pkgname=ducount
pkgver=1.1.0
pkgrel=2
pkgdesc="Calculates disk usage for files in a given directory"
url="https://github.com/simon-thorpe/ducount"
license=('BSD')
arch=('any')
depends=('python' 'python-termcolor')
source=('https://cdn.rawgit.com/simon-thorpe/ducount/v1.1.0/ducount')
sha256sums=('9f3826090fab1596e2e5738629cfc335597d678b0f25d642d2237539ad25b0f4')

package() {
  install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/ducount"
}
