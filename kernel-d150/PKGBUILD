pkgname=kernel-d150
pkgver=2.6.30.5
pkgrel=1
pkgdesc="Kernel 2.6.30-5 ottimizzato per Acer Aspire D150"
url="http://blog.liberailvoip.it/2009/09/08/acer-aspire-one-kernel-2-6-30-5-ottimizzato-ubuntu-debian/"
depends=('microcode_ctl')
makedepends=('wget' 'tar')
arch=('i686')
license=('GPL')
install=${pkgname}.install
source=('http://blog.liberailvoip.it/wp-content/uploads/linux-image-2.6.30.5-skumpic-aa1-r2.deb' 'http://blog.liberailvoip.it/wp-content/uploads/initrd.img-2.6.30.5-skumpic-aa1-r2')
md5sums=('471d80a7945306cc7745b79016cd6096' 'a362a6a5c7c1aa6017d45286cc4f746b')

build() {

	echo -e "
\033[1;31mInstallazione kernel\033[0m"
	sleep 1
	cd $startdir/
	ar vx linux-image-2.6.30.5-skumpic-aa1-r2.deb
	tar -xzvf data.tar.gz -C / > /dev/null

	echo -e "
\033[1;31mInstallazione initrd\033[0m"
	sleep 1
	
	cp initrd.img-2.6.30.5-skumpic-aa1-r2  /boot/initrd.img-2.6.30.5-skumpic-aa1-r2
}
