[Unit]
Description=Mount the swap file via a loop device
After=local-fs.target
Before=swap.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/lib/systemd/scripts/systemd-loop-swapfile.sh on
ExecStop=/usr/lib/systemd/scripts/systemd-loop-swapfile.sh off

[Install]
Alias=local-fs.target.wants/systemd-loop-swapfile.service
