# Maintainer: PieterDeBruijn <aur@pieterdebruijn.nl>
# Contributor: jordz
pkgname=belastingdienst-ib2013
pkgver=1.00
pkgrel=0
pkgdesc="Aangifteprogramma IB 2013, Nederlandse belastingdienst"
arch=('i686' 'x86_64')
url="http://www.belastingdienst.nl"
license=('custom')

depends=(libsm libxext)
if test "$CARCH" == x86_64; then
  depends=(lib32-libsm lib32-libxext)
fi

options=('!strip')
source=('http://download.belastingdienst.nl/belastingdienst/apps/linux/ib2013_linux.tar.gz')
sha256sums=('e2c45d262ce34538eb93e0665b08317ddc794a2d28516f3b6672685372545fb1')

package() 
{
  mkdir -p ${pkgdir}/opt/belastingdienst/ib2013
  mkdir -p ${pkgdir}/usr/bin

  cp -a ${srcdir}/ib2013/* ${pkgdir}/opt/belastingdienst/ib2013
  ln -s /opt/belastingdienst/ib2013/bin/ib2013ux ${pkgdir}/usr/bin/
}
