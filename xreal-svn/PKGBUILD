#Maintainer: kfgz <kfgz at interia pl>

pkgname=xreal-svn
pkgver=3962
pkgrel=1
pkgdesc="xReal - The highly advanced id Tech 3 engine and free indie game project"
url="http://xreal-project.net/"
license=('GPL2' 'Creative Commons')
arch=('i686' 'x86_64')
conflicts=('xreal')
depends=('sdl>=1.2' 'freetype2>=2.3.5' 'openal>=1.7' 'curl>=7.15' 'gtk2>=2.4.0' \
         'gtkglext>=1.0' 'libxml2>=2.0' 'zlib>=1.2' 'glew>=1.5' 'boost>=1.35')
makedepends=('scons' 'subversion')
source=('http://www.xreal-project.net/base/map-redm02-20090416.pk3' \
        'http://www.xreal-project.net/base/map-redm08-20090422.pk3' \
        'http://www.xreal-project.net/base/map-oddm01-20090623.pk3' \
        'http://www.xreal-project.net/base/map-ingardm1-20090421.pk3' \
        'http://www.xreal-project.net/base/map-gwdm2-20090302.pk3' \
        'xreal' \
        'xreal.desktop')
md5sums=('c7b43e0eafe2e0705f6ff9df50683f6a' \
         '590f46cae82a8f0f8dfb415fbebb4e76' \
         '9ddd5076638afe24dac8026189e80935' \
         'edc6e5b74836815afd734372c089611a' \
         '5649d3c3c6a93b76d65f0641d51b1787' \
         '83ba94b450348e118fe879df5476d3ff' \
         '9815589d6f4da23ed1bd417c3fc205ff')
      
_svntrunk=https://xreal.svn.sourceforge.net/svnroot/xreal/trunk/xreal
_svnmod=XreaL

build() {
  msg2 'Do NOT delete the src/ directory because it takes a long time to clone via svn!'
  
  # Find out if we're compiling with SMP support or not and set scons params
  numcpu=`cat /proc/cpuinfo  | grep -c processor`
  [ "$CARCH" = "i686" ] && if [ "$numcpu" -gt "1" ] ; then \
  SCONSPARAMS="arch=linux-i386 smp=1 xmap=1 \
   warnings=0" ; else SCONSPARAMS="arch=linux-i386 smp=0\
   xmap=1 warnings=0"; fi
  [ "$CARCH" = "x86_64" ] && if [ "$numcpu" -gt "1" ] ; then \
  SCONSPARAMS="arch=linux-x86_64 smp=1 xmap=1 \
   warnings=0" ; else SCONSPARAMS="arch=linux-x86_64 smp=0 \
   xmap=1 warnings=0" ; fi

   msg2 'Fetching files...'
   cd ${srcdir}
   if [ -d ${_svnmod}/.svn ]; then
     (cd ${_svnmod} && svn up -r ${pkgver})
   else
     svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
   fi
   msg "SVN checkout done or server timeout"
   
   cp -r ${_svnmod} ${_svnmod}-build
   cd ${_svnmod}-build

   msg2 'Compiling with:'
   echo $SCONSPARAMS
   sleep 1
   scons $SCONSPARAMS

   # Compilation done, proceed...
   install -dm755 ${pkgdir}/usr/{bin,lib/xreal,share/applications}

   if [ `uname -m` = "x86_64" ]; then
    install -m755 rendererGLx86_64.so ${pkgdir}/usr/bin
    install -m755 xmap.x86_64 ${pkgdir}/usr/bin
    install -m755 xmap2.x86_64 ${pkgdir}/usr/bin
    install -m755 xreal.x86_64 ${pkgdir}/usr/bin
   else
    install -m755 rendererGLi386.so ${pkgdir}/usr/bin
    install -m755 xmap.i386 ${pkgdir}/usr/bin
    install -m755 xmap2.i386 ${pkgdir}/usr/bin
    install -m755 xreal.i386 ${pkgdir}/usr/bin
   fi
   
   cp -R ${srcdir}/${_svnmod}-build/base ${pkgdir}/usr/lib/xreal/

   install -m644 ${srcdir}/*.pk3 ${pkgdir}/usr/lib/xreal/base/
   install -m644 ${srcdir}/xreal.desktop ${pkgdir}/usr/share/applications
   install -m755 ${srcdir}/xreal ${pkgdir}/usr/bin

   rm -rf ${srcdir}/${_svnmod}-build
}
