# Maintainer: Michael Asher < asherlm [at] gmail dot com >
# Contributor: Michael Asher < asherlm [at] gmail dot com >
pkgname=tacacs-plus
pkgver=4.0.4.19
pkgrel=2
pkgdesc="TACACS+ daemon"
arch=(i686 x86_64)
url="http://www.shrubbery.net/tac_plus/"
license=('Custom')
source=(ftp://ftp.shrubbery.net/pub/tac_plus/tacacs+-F${pkgver}.tar.gz)

build() {
  cd ${srcdir}/tacacs+-F${pkgver}
  msg2 "Configuring..."
  ./configure --prefix=/usr >>/dev/null 2>&1
  msg2 "Compiling..."
  make all >>/dev/null 2>&1
  msg2 "Installing to {$pkgdir}"
  make DESTDIR=${pkgdir} install >>/dev/null 2>&1
  msg2 "Copying License File..."
    install -D -m644 ${srcdir}/tacacs+-F${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE >>/dev/null 2>&1
}
md5sums=('4979127f60f1a83c55e8a7cec285a797')
sha1sums=('0069ab7a9a7fae389e14f32564cf7d5ffbd4ef16')
