# Contributor: Krzysztof Raczkowski <raczkow@gmail.com>

pkgname=kdeicons-nico_project
pkgver=1.0
pkgrel=2
pkgdesc="Complete system icon set for KDE"
arch=('i686' 'x86_64')
url="http://www.kde-look.org/content/show.php/NiCo_Project?content=55749"
license=('GPL')
makedepends=('tar' 'bzip2' 'imagemagick')
source=(ftp://ftp.prz.edu.pl/pub/archlinux/archrak/src/NiCo_Project_by_hammergom.zip)
md5sums=('489108737dd78516a0f689eac7141fe0')

build() {
  cd ${startdir}/src/NiCo_Crystal
  sh buildset

  mkdir -p ${startdir}/pkg/usr/share/icons
  tar xjf NiCo_Project.tar.bz2 -C ${startdir}/pkg/usr/share/icons
}
