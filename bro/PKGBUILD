# Maintainer: Isaac C. Aronson <i@pingas.org>

pkgname=bro
pkgver=20120615
pkgrel=1
pkgdesc="A highly configurable IDS"
arch=('i686' 'x86_64')
url="http://bro-ids.org/"
license=('BSD')
depends=('libpcap' 'ruby' 'file' 'geoip' 'python2')
makedepends=('cmake' 'swig')
options=('emptydirs')
_gitroot="git://git.bro-ids.org/bro.git"
_gitname="bro"

build() {
  cd $srcdir
  if [ -d "$srcdir/$_gitname" ] ; then 
      cd $_gitname && git pull origin
      msg "Local files are up-to-date"
  else
      git clone --recursive $_gitroot
      cd $_gitname
      git checkout fastpath && git pull
  fi

  msg "GIT checkout done or server timeout"
  cd "$srcdir/$_gitname"
  ./configure --prefix="/usr"
  make DESTDIR="$pkgdir"
}

package() {
  cd $srcdir/$_gitname
  make DESTDIR="$pkgdir/" install
  mkdir -p $pkgdir/etc/bro/
  mv $pkgdir/etc/{broctl.cfg,networks.cfg,node.cfg} $pkgdir/etc/bro/
  mv $pkgdir/usr/etc/* $pkgdir/etc/bro/
  ln -s $pkgdir/etc/bro/* $pkgdir/usr/etc/
  find $pkgdir/ -type f -exec sed -i 's:/usr/bin/python:/usr/bin/env python2:g' {} \;
}
