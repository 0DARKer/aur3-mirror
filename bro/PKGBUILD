# Maintainer: Isaac C. Aronson <i@pingas.org>

pkgname=bro
pkgver=20120607
pkgrel=2
pkgdesc="A highly configurable IDS"
arch=('i686' 'x86_64')
url="http://bro-ids.org/"
license=('BSD')
depends=('libpcap' 'ruby' 'file' 'geoip' 'python')
makedepends=('cmake' 'swig')
options=('emptydirs')
_gitroot="git://git.bro-ids.org/bro.git"
_gitname="bro"

build() {
  cd $srcdir
  if [ -d "$srcdir/$_gitname" ] ; then 
      cd $_gitname && git pull origin
      msg "Local files are up-to-date"
  else
      git clone --recursive $_gitroot
      cd $_gitname
      git checkout fastpath && git pull
  fi

  msg "GIT checkout done or server timeout"
  cd "$srcdir/$_gitname"
  ./configure --prefix="/usr"
  make DESTDIR="$pkgdir"
}

package() {
  cd $srcdir/$_gitname
  make DESTDIR="$pkgdir/" install
  install -Dm644 $pkgdir/usr/etc/* $pkgdir/etc
  rm -rf $pkgdir/usr/etc/
}
