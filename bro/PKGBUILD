# Maintainer: Isaac C. Aronson <i@pingas.org>

pkgname=bro
pkgver=2.0
pkgrel=1
pkgdesc="A highly configurable IDS"
arch=('i686' 'x86_64')
url="http://bro-ids.org/"
license=('BSD')
depends=('cmake' 'libpcap' 'openssl' 'file' 'swig' 'zlib' 'libzip' 'geoip')
makedepends=('')
source=("http://www.bro-ids.org/downloads/release/bro-$pkgver.tar.gz")
md5sums=('2ea82a7b4cabf3ff70e26085494e527f')

build() {
  cd $srcdir/$pkgname-$pkgver
  export CMAKE_INSTALL_PREFIX="$pkgdir/usr"
  ./configure --prefix="$pkgdir/usr"
  make DESTDIR="$pkgdir"
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR="$pkgdir/" CMAKE_INSTALL_PREFIX="$pkgdir/usr" install
}
