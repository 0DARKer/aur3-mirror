pkgname=doomrl
pkgver=0.9.9.4
pkgrel=1
pkgdesc="A roguelike game based on the FPS Doom."
arch=("i686" "x86_64")
url="http://doom.chaosforge.org/"
license=("unknown")
[ "$CARCH" == "i686" ] && depends=("sdl_mixer" "zlib" "lua" "timidity-eawpatches")
[ "$CARCH" == "x86_64" ] && depends=("lib32-sdl_mixer" "lib32-zlib" "lib32-lua" "timidity-eawpatches")
source=("http://doom.chaosforge.org/file_download/14/doomrl-linux-i386-0994.tar.gz" "doomrl")
md5sums=('7a766098543bb1ecbd2b298355e02e26' '9a4fb2ae47ec81f6792deb1e1d19edb6')

build() {
	cd "$srcdir/doomrl-linux-i386-0994"

	# Copy program and required files
	mkdir -p "$pkgdir/usr/share/doomrl"
	cp -a * "$pkgdir/usr/share/doomrl"

	# Copy script used to run program
	install -D "$srcdir/doomrl" "$pkgdir/usr/bin/doomrl"

	# This is needed to save games and scores
	chmod 4755 "$pkgdir/usr/share/doomrl/doomrl"
}
