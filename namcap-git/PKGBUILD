_pkgname=namcap
pkgname=namcap-git
pkgver=3.2.1.22.gcadf81b
pkgrel=1
epoch=1
pkgdesc="A Pacman package analyzer, git version"
arch=('any')
url="http://projects.archlinux.org/namcap.git/"
license=('GPL')
depends=('pyalpm-git' 'licenses' 'binutils' 'elfutils' 'python-pyelftools')
makedepends=('git' 'python-distribute')
provides=('namcap')
conflicts=('namcap')
source=('git+http://projects.archlinux.org/git/namcap.git')
md5sums=('SKIP')


pkgver() {
	cd $_pkgname
	git describe --always | sed -e 's|-|.|g'
}

package() {
  cd "$srcdir/$_pkgname"

  python ./setup.py install --root=${pkgdir}
}
