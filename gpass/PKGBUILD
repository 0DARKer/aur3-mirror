pkgname=gpass
pkgver=0.5.0
pkgrel=1
pkgdesc="Simple password manager for GNOME"
url="http://directory.fsf.org/security/misc/GPass.html"
license=
depends=('libgnomeui' 'mhash' 'mcrypt')
makedepends=()
conflicts=()
replaces=()
backup=()
install=gpass.install
source=("http://projects.netlab.jp/${pkgname}/release/${pkgname}-${pkgver}.tar.gz")
md5sums=('6b0a9abdc5846a08b267a6018d320cc4')

build() {

  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/opt/gnome
  make LDFLAGS+=-Wl,--export-dynamic || return 1
  make DESTDIR=$startdir/pkg install

}
