# Maintainer: aaditya      aaditya_gnulinux@zoho.com

pkgname=pdf2png
pkgver=0.2
pkgrel=1
pkgdesc="Converts PDF books to PNG, JPG, and other image formats."
url="https://github.com/aadityabagga/pdf2png"
arch=('any')
license=('GPL')
depends=('python' 'ghostscript' 'python-gobject' 'pywebkitgtk')
makedepends=()
conflicts=('pdf2img-git')
source=("http://downloads.sourceforge.net/mefiles/${pkgname}-${pkgver}.tar.gz")
sha1sums=('7baa62fa0c71163cf71c21ecd679815b0bf7b8bb')

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR=${pkgdir} install
}


