# Contributor: Spider.007 <archlinux AT spider007 DOT net>

pkgname=kibana
pkgver=4.0.0beta3
pkgrel=2
pkgdesc="browser based analytics and search dashboard for Elasticsearch"
arch=('any')
url="http://www.elasticsearch.org/overview/kibana/"
license=('apache')
makedepends=('git')
depends=("java-runtime")
source=("kibana.service" "https://download.elasticsearch.org/kibana/kibana/$pkgname-${pkgver/b/-b}.tar.gz")
md5sums=('SKIP' '6afcceceebab32910091ff3bf48046b3')

package() {
  cd $srcdir/$pkgname-${pkgver/b/-b}
  mkdir -p $pkgdir/usr/{share/webapps/kibana,lib/systemd/system}
  cp -Rp $srcdir/$pkgname-${pkgver/b/-b}/* $pkgdir/usr/share/webapps/kibana/
  cp $srcdir/kibana.service $pkgdir/usr/lib/systemd/system/
}
