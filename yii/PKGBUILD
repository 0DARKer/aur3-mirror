# Maintainer: Peter A. Shevtsov <pshevtsov@severusweb.ru>
pkgname=yii
pkgver=1.1.8.r3324
pkgrel=1
pkgdesc='Yii is a high-performance PHP framework best for developing Web 2.0 applications'
arch=('any')
url='http://yiiframework.com/'
license=('BSD')
depends=('php')
source=("http://yii.googlecode.com/files/$pkgname-$pkgver.tar.gz")
md5sums=('19b3cae51c82327f35a116b7dcdb0d80')

package() {
    cd "$srcdir/$pkgname-$pkgver"
    install -D -m 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    cp -R . "$pkgdir/usr/share/$pkgname"
    install -d "$pkgdir/usr/bin"
    ln -s "/usr/share/$pkgname/framework/yiic" "$pkgdir/usr/bin/yiic"
}
