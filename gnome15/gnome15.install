pkgname=gnome15

post_install() {
    gtk-update-icon-cache -q -f /usr/share/icons/hicolor

    groupadd -f gnome15 &> /dev/null
    echo "  >> Add yourself to the gnome15 group to access devices"
}

post_upgrade() {
    gtk-update-icon-cache -q -f /usr/share/icons/hicolor
}

post_remove() {
    gtk-update-icon-cache -q -f /usr/share/icons/hicolor
}
