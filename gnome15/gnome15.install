pkgname=gnome15

post_install() {
    gtk-update-icon-cache -q -f /usr/share/icons/hicolor

    groupadd -f gnome15 &> /dev/null
    echo "  >> you need to be a member of the gnome15 group for the application"
    echo "  >> to work properly."
}

post_upgrade() {
    gtk-update-icon-cache -q -f /usr/share/icons/hicolor
}

post_remove() {
    gtk-update-icon-cache -q -f /usr/share/icons/hicolor
}
