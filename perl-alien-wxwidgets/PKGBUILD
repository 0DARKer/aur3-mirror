pkgname=perl-alien-wxwidgets
_pkgname=Alien-wxWidgets
pkgver=0.51
pkgrel=1
pkgdesc="Building, finding and using wxWidgets binaries"
arch=('any')
url="http://search.cpan.org/~MBARBON/Alien-wxWidgets/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/M/MB/MBARBON/${_pkgname}-$pkgver.tar.gz)
md5sums=('49f0231d0af4950c0bade198c73cfdb2')

build() {
  cd $srcdir/${_pkgname}-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  find $pkgdir -name perllocal.pod -delete
  find $pkgdir -name .packlist -delete
}
