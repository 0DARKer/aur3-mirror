# Maintainer: haru_nak <uobikiemukot at gmail dot com>
pkgname=yaftx
_pkgname=yaft
pkgver=0.2.9
pkgrel=1
pkgdesc="X Window System port of yaft (yet another framebuffer terminal)"
arch=('i686' 'x86_64')
url="https://github.com/uobikiemukot/"
license=('MIT')
makedepends=('ncurses')
source=($url/$_pkgname/archive/v$pkgver.tar.gz)

build() {
  cd $srcdir/$_pkgname-$pkgver
  make yaftx
}

package() {
  cd $srcdir/$_pkgname-$pkgver

  mkdir -p $pkgdir/usr/share/terminfo
  tic -o $pkgdir/usr/share/terminfo info/yaft.src
  mkdir -p $pkgdir/usr/bin/
  install -m755 ./yaftx $pkgdir/usr/bin/yaftx
}
md5sums=('0940ef02e04842b82324198669a3153f')
