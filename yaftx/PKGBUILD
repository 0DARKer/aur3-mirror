# Maintainer: haru <uobikiemukot at gmail dot com>
pkgname=yaftx
_pkgname=yaft
pkgver=0.2.7
pkgrel=2
pkgdesc="yaft X Window System port"
arch=('i686' 'x86_64')
url="http://uobikiemukot.github.com/yaft"
license=('MIT')
makedepends=('ncurses' 'libx11')
source=($url/release/$_pkgname-$pkgver.tar.gz)

build() {
  cd $srcdir/$_pkgname-$pkgver
  make yaftx
}

package() {
  cd $srcdir/$_pkgname-$pkgver

  mkdir -p $pkgdir/usr/share/terminfo
  tic -o $pkgdir/usr/share/terminfo info/yaft.src
  install -Dm755 {./,$pkgdir/usr/bin/}yaftx
}
md5sums=('f4c78e4c7702ec2512d129cc26f9807d')
