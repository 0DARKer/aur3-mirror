pkgname=rutorrent-plugins
_pkgname=plugins
pkgver=3.3
pkgrel=1
pkgdesc="Plugins for ruTorrent"
arch=('any')
url='http://code.google.com/p/rutorrent/'
license=('GPL')
groups=('rutorrent')
depends=('rutorrent')
optdepends=('php-curl: to use rss plugin, https')
replaces=('rutorrent')
source=("http://rutorrent.googlecode.com/files/${_pkgname}-${pkgver}.tar.gz" "plugins.ini")
build() {
  cd "$srcdir"
  install -dm755 ${pkgdir}/srv/http/rutorrent || return 1
  tar c ${_pkgname} | tar -C ${pkgdir}/srv/http/rutorrent -x || return 1
  install -Dm644 plugins.ini ${pkgdir}/srv/http/rutorrent/conf/plugins.ini.pacnew || return 1
}

# vim:set ts=2 sw=2 et ft=sh tw=100:
md5sums=('b17f17f535c7e86ede404913f6fd3fbb'
         '8a5d8b83e60a3e55716d87906cc8a734')
