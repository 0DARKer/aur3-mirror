pkgname=lewm-cvs
pkgver=20110118
pkgrel=1
_cvsroot=":pserver:anonymous@cvs.luaforge.net:/cvsroot/lewm"
_cvsmod="src"
pkgdesc="Lua script that brings tiling to EWMH-compliant Window Managers"
url="http://luaforge.net/projects/lewm/"
arch=(any)
license=('GPL')
depends=('dmenu' 'lua-yajl-git'  'archlinux-xdg-menu' 'luafilesystem' 'luaposix')
makedepends=('gcc' 'autoconf' )

build() {
  if [ -d $_cvsmod/CVS ]; then
    cd $_cvsmod
    cvs -z3 update -d
  else
    cvs -z3 -d $_cvsroot co -D now -f $_cvsmod
    cd $_cvsmod
  fi

  msg "CVS checkout done or server timeout"
  msg "Starting make..."

  rm -rf $srcdir/$_cvsmod-build
  cp -r $srcdir/$_cvsmod $srcdir/$_cvsmod-build
  cd $srcdir/$_cvsmod-build/
  autoreconf -i
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
