# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=cream
pkgver=0.42
pkgrel=1
pkgdesc="Modern easy-to-use configuration of the Vim text editor"
arch=('i686' 'x86_64')
url="http://cream.sourceforge.net/"
license=('GPL')
depends=('gvim')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)

md5sums=('3a9a51c58b005a6466f3f70e015da38b')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  sed -i 's/Categories=Application;Development;/\0TextEditor;/' cream.desktop || return 1
  DESTDIR=${pkgdir} sh INSTALL.sh /usr || return 1

  rm ${pkgdir}/usr/share/icons/cream.svg || return 1
  chmod a-x ${pkgdir}/usr/share/applications/$pkgname.desktop || return 1
}
