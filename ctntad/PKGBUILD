# Maintainer: Jameson Pugh <imntreal@gmail.com>
pkgname=ctntad
pkgver=0.1.6
pkgrel=2
pkgdesc="Ceton InfiniTV Tunning Adapter Driver"
arch=('i686' 'x86_64')
url="http://www.cetoncorp.com/infinitv/support/linux.php"
license=('GPL')
depends=('gupnp' 'libgusb-ceton' 'ceton_infinitv')
source=("http://cetoncorp.com/downloads/$pkgname-$pkgver.tar.gz"
  'gthread.patch')
  sha256sums=('a22f62124ea28a6e909800a96227f41b33af867efe1005c06bec9a42cbcd1f67'
    '2603a16fb8b2256f6592d6b669d3026795c00cbfdfbdd62a9b78476bee797d79')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 < ../gthread.patch
  autoreconf
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
