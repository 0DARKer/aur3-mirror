# maintainer: Magnus Therning <magnus@therning.org>

_pkgname=gencfsm
_pkgmajver=1.8
pkgname=gnome-encfs-manager
pkgver=1.8.4
pkgrel=1
pkgdesc="An easy to use manager and mounter for encfs stashes"
arch=('i686', 'x86_64')
license=('GPL')
depends=('encfs' 'libappindicator3' 'libgee06' 'libgnome-keyring')
makedepends=('vala' 'intltool')
install=$pkgname.install
url="https://launchpad.net/gencfsm"
source=(https://launchpad.net/${_pkgname}/trunk/${_pkgmajver}/+download/${pkgname}_${pkgver}.tar.gz
       )
changelog=${pkgname}.changelog

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
      --libexecdir=/usr/lib/$pkgname
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="$pkgdir" install
}

sha256sums=('9b20931854f9fcaba9a8ecdcc4ebc7553d75d7dbee2c07e37624173fdd50544d')
