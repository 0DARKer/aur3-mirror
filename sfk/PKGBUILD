# Maintainer: xduugu
# Contributor: Baumi <baumi@gmx.com>
pkgname=sfk
pkgver=1.6.0
pkgrel=1
pkgdesc="Swiss File Knife"
arch=('i686' 'x86_64')
url="http://stahlforce.com/dev/index.php?tool=sfk"
license=('custom:BSD')
depends=('gcc-libs')
source=(http://downloads.sourceforge.net/swissfileknife/${pkgname}${pkgver//./}.zip)
md5sums=('725b849ea7395f88422fda5c07700bba')
sha256sums=('8aff2200e5a006b09cbb953f510a56388264f5966796b7d3ec3d6414274463da')

build() {
  cd "${pkgname}${pkgver//./}"
  g++ sfk.cpp sfknet.cpp patch.cpp inst.cpp -o sfk
}

package() {
  cd "${pkgname}${pkgver//./}"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 bsd-license.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}


