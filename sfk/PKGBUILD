# Maintainer: xduugu
# Contributor: Baumi <baumi@gmx.com>
pkgname=sfk
pkgver=1.6.0
pkgrel=1
pkgdesc="Swiss File Knife"
arch=('i686' 'x86_64')
url="http://stahlforce.com/dev/index.php?tool=sfk"
license=('custom:BSD')
depends=('gcc-libs')
source=(http://downloads.sourceforge.net/swissfileknife/${pkgname}${pkgver//./}.zip)
md5sums=('26d10ecdc858a2e1c85e2cf2eb9c2f97')
sha256sums=('2c65e4db2dc43a0c70132793e12f0257afcdbd603d9dc2d3a1b75e6e952c7e86')

build() {
  cd "${pkgname}${pkgver//./}"
  g++ sfk.cpp sfknet.cpp patch.cpp inst.cpp -o sfk
}

package() {
  cd "${pkgname}${pkgver//./}"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 bsd-license.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}


