# Maintainer: xduugu
# Contributor: Baumi <baumi@gmx.com>
pkgname=sfk
pkgver=1.5.8
pkgrel=1
pkgdesc="Swiss File Knife"
arch=('i686' 'x86_64')
url="http://stahlforce.com/dev/index.php?tool=sfk"
license=('custom:BSD')
depends=('gcc-libs')
source=(http://downloads.sourceforge.net/swissfileknife/${pkgname}${pkgver//./}.zip)
md5sums=('6027143a598f46d837f44f91752e020c')
sha256sums=('f6793f9adcb1f4caf37cf4276395c290e578166f7c1d015be62015820486f109')
 
build() {
  cd "${pkgname}${pkgver//./}"
  g++ sfk.cpp sfknet.cpp patch.cpp inst.cpp -o sfk
}

package() {
  cd "${pkgname}${pkgver//./}"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 bsd-license.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}


# vim:set ts=2 sw=2 et:
