# Maintainer: xduugu
# Contributor: Baumi <baumi@gmx.com>
pkgname=sfk
pkgver=1.5.9
pkgrel=1
pkgdesc="Swiss File Knife"
arch=('i686' 'x86_64')
url="http://stahlforce.com/dev/index.php?tool=sfk"
license=('custom:BSD')
depends=('gcc-libs')
source=(http://downloads.sourceforge.net/swissfileknife/${pkgname}${pkgver//./}.zip)
md5sums=('da104e79c10050ca87be9f9bca7ba6a3')
sha256sums=('906f47f77e501206b51985e9bdb9886a002c327c0132e81e84a160d6b308d94a')
 
build() {
  cd "${pkgname}${pkgver//./}"
  g++ sfk.cpp sfknet.cpp patch.cpp inst.cpp -o sfk
}

package() {
  cd "${pkgname}${pkgver//./}"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 bsd-license.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}


