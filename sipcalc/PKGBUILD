# Contributor: Tomasz Cielecki <tomasz@ostebaronen.dk>
pkgname=sipcalc
pkgver=1.1.4
pkgrel=1
pkgdesc="Sipcalc is an "advanced" console based ip subnet calculator."
arch=('i686')
url="http://www.routemeister.net/projects/sipcalc/"
license=('BSD')
source=(http://www.routemeister.net/projects/sipcalc/files/$pkgname-$pkgver.tar.gz)
md5sums=('13b64d56ef669fc519df410609c5ff38')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

