#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=arch32-light
pkgver=2012.12.31
pkgrel=1
pkgdesc='Lightweight 32-bit chroot intended for 64-bit systems.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/arch32-light"
depends=(diffutils 'pacman>=3.4.0' 'pacman-mirrorlist>=20100621')
optdepends=('xorg-xhost: for host xorg support' 'initscripts: for initscripts daemon support')
conflicts=(arch32)
backup=(etc/arch32.conf etc/arch32d.conf)
source=(
  http://xyne.archlinux.ca/projects/arch32-light/src/arch32-light-2012.12.31.tar.xz
  http://xyne.archlinux.ca/projects/arch32-light/src/arch32-light-2012.12.31.tar.xz.sig
)
sha512sums=(
  7e922ef9c44aea8de5aae5b2e6135c2c06de2404ededadf490a8562e3ee56e7811d41f49cf3adf99a497d9687a7583938c97d43205c342830647c3e0dfcf7b05
  e9e35b8e65b5f5bd4d6e0c315d22c85311d667185078613d14d14ee2b8b98e5fe9ec9110b8044071b35a57438731f870b8fe4159012b75f7319b73e9755adc34
)
md5sums=(
  d6c117e0d40483a01ec819c840fc4502
  2e35b8586050b987857f67d1719599a9
)
install=arch32-light.install

build ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -Dm644 arch32.conf "${pkgdir}/etc/arch32.conf"
  install -Dm644 arch32d.conf "${pkgdir}/etc/arch32d.conf"

  install -Dm644 arch32.service "$pkgdir/usr/lib/systemd/system/arch32.service"

  install -Dm755 arch32d "${pkgdir}/etc/rc.d/arch32d"

  install -Dm755 arch32initialize "${pkgdir}/usr/bin/arch32initialize"
  install -Dm755 arch32m "${pkgdir}/usr/bin/arch32m"
  install -Dm755 arch32 "${pkgdir}/usr/bin/arch32"

  install -Dm755 pacman32 "${pkgdir}/usr/bin/pacman32"

  install -Dm644 "man/${pkgname}.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}.1.gz"
}


