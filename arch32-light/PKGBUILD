#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=arch32-light
pkgver=2012.10
pkgrel=1
pkgdesc='Lightweight 32-bit chroot intended for 64-bit systems.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/arch32-light"
depends=(diffutils initscripts 'pacman>=3.4.0' 'pacman-mirrorlist>=20100621')
optdepends=('xorg-xhost: for host xorg support')
conflicts=(arch32)
backup=(etc/arch32.conf etc/arch32d.conf)
source=(
  http://xyne.archlinux.ca/projects/arch32-light/archives/arch32-light-2012.10.tar.xz
  http://xyne.archlinux.ca/projects/arch32-light/archives/arch32-light-2012.10.tar.xz.sig
)
sha512sums=(
  6746a87e93a7a53720545ff970c99fa8c672dc5af28893ef29c9da48cf2d534ca80733aa591067d715ccec49f9fa794b33bdbb15884adeacb7efef53dc6c475d
  11f8f33a8c1421182f41f183092f7c0b0225bbf94efc363d163aec83ab97c7937be551772f45d526bf730b50249cbf09bc0a117dbe879efa67e9bef0c8f95094
)
md5sums=(
  26ef12b5745478a71294ac2b62d2d990
  d150a0cc0bb559179fc4167490b81ce3
)
install=arch32-light.install

build ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 arch32d "${pkgdir}/etc/rc.d/arch32d"
  install -Dm755 pacman32 "${pkgdir}/usr/bin/pacman32"
  install -Dm755 arch32 "${pkgdir}/usr/bin/arch32"
  install -Dm755 arch32initialize "${pkgdir}/usr/bin/arch32initialize"
  install -Dm644 arch32.conf "${pkgdir}/etc/arch32.conf"
  install -Dm644 arch32d.conf "${pkgdir}/etc/arch32d.conf"
  install -Dm644 "man/${pkgname}.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}.1.gz"
}

