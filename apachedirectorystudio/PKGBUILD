# Contributor: Ian Taylor <ian at lorf dot orgs>
pkgname=apachedirectorystudio
pkgver=1.5.3.v20100330
pkgrel=2
pkgdesc="An Eclipse-based LDAP browser and directory client"
arch=('i686' 'x86_64')
[ "${CARCH}" = "i686" ]   && ARCH=x86
[ "${CARCH}" = "x86_64" ] && ARCH=x86_64
url="http://directory.apache.org/studio/"
license=("APACHE")
depends=("jre" "gtk2")
source=("http://apache.crihan.fr/dist//directory/studio/stable/${pkgver}/ApacheDirectoryStudio-linux-${ARCH}-${pkgver}.tar.gz")

[ "${ARCH}" = "x86" ] && md5sums=('315e4726121aa84c93e92f5f0db2884c')
[ "${ARCH}" = "x86_64" ] && md5sums=('613d07f7befbb8cc44c462a6ec262719')

build() {
  cd "${srcdir}" || return 1

  mkdir "${pkgdir}/opt" || return 1

  mv "ApacheDirectoryStudio-linux-${ARCH}-${pkgver}" \
    "${pkgdir}/opt/ApacheDirectoryStudio" ||
    return 1

  cd "${pkgdir}" || return 1
  mkdir -p "usr/bin" || return 1
  ln -sf \
    "/opt/ApacheDirectoryStudio/ApacheDirectoryStudio" \
    "usr/bin/ApacheDirectoryStudio" || return 1
}

# vim:set ts=2 sw=2 et:
