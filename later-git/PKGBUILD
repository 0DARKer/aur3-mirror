# Maintainer: James Reed <supplantr at archlinux dot info>

_basename=later
pkgname=${_basename}-git
pkgver=20121209
pkgrel=1
pkgdesc="A script that saves and manages URLs to be opened later."
arch=('any')
url="https://github.com/supplantr/later"
license=('GPL3')
depends=('perl')
makedepends=('git')
optdepends=('curl: URL title support' 'perl-html-parser: URL title support')
provides=(${_basename})
conflicts=(${_basename})

_gitroot="git://github.com/supplantr/later.git"
_gitname="later"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  install -Dm755 "${_basename}" "${pkgdir}/usr/bin/${_basename}"
}
