# Mantainer: defendor at riseup dot net

pkgname=gtk-theme-flattastic
pkgver=2014.01.13
pkgrel=1
pkgdesc="Another colorful and flat GTK 3, GTK 2, Xfwm, Metacity, Unity and Openvbox theme suite."
arch=('any')
url="http://nale12.deviantart.com/art/Flattastic-13-01-2014-424913255"
license=('GPL3')
depends=('gtk-engine-murrine')
_sourcefile=flattastic_13_01_2014_by_nale12-d70zd5z.zip
source=(http://fc03.deviantart.net/fs70/f/2014/013/2/d/"${_sourcefile}")
md5sums=('111a83770d452290fa8abf90b073db30')

noextract=("${source[@]%%::*}")
_foldername=flattastic_13_01_2014_by_nale12-d70zd5z

package() {
	mkdir -p ${pkgdir}/usr/share/themes/
	mkdir "${_foldername}"
	unzip "${_sourcefile}" -d ${_foldername}
	cp -rv ${srcdir}/${_foldername}/* ${pkgdir}/usr/share/themes/
}