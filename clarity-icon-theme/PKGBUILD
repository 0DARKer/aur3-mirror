# Contributor Anonymo <meowdib at gmail dot com>

pkgname=clarity-icon-theme
pkgver=0.2.9
pkgrel=1
pkgdesc="Vector icon theme for GTK. It can be used with XFce or GNOME"
arch=('i686' 'x86_64')
makedepends=('findutils' 'imagemagick')
url="http://gnome-look.org/content/show.php/Clarity?content=135654"
license=('LGPL3')
optdepends=('Atolm: recommended theme.')
source=(http://www.fileden.com/files/2011/2/28/3088999/clarity-0.2.9.tar.gz)
md5sums=('28f27d89e4bc4006b888af8841bc605b')

build()
{
cd "$srcdir"
install -d "${pkgdir}/usr/share/icons/"
cp -rf "Clarity" "${pkgdir}/usr/share/icons/" || return 1
find -type f -print0 | xargs -0 chmod 644
}

