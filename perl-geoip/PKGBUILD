# Maintainer: Sebastien Bariteau <numkem@gmail.com>
pkgname=perl-geoip
pkgver=1.40
pkgrel=1
pkgdesc="GeoIP Perl API"
arch=(any)
license=(GPL)
url="https://github.com/maxmind/geoip-api-perl"
source="https://github.com/maxmind/geoip-api-perl/archive/v1.40.zip"
md5sums=('928dc3caede6620b830f2d9017eb97c0')
depends=('geoip')
provides=('Cassandra::Simple')

build() {
  cd "$srcdir/geoip-api-perl-${pkgver}"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find $pkgdir -name perllocal.pod -delete
  find $pkgdir -name .packlist -delete
}
