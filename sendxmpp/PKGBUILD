pkgname=sendxmpp
pkgver=1.20
pkgrel=2
pkgdesc="sendxmpp is a perl-script to send xmpp (jabber), similar to what mail(1) does for mail."
arch=(i686 x86_64)
url="http://sendxmpp.platon.sk/"
license=('GPL')
groups=
provides=
depends=('perl' 'perl-net-xmpp' 'perl-io-socket-ssl')
options=('!emptydirs' 'docs')
source=(http://ftp.debian.org/debian/pool/main/s/sendxmpp/sendxmpp_${pkgver}.orig.tar.gz)
md5sums=('0cd6f298a2a352d0ec06b241dff16bbb')

build() {
  cd $startdir/src/$pkgname-$pkgver
  perl Makefile.PL PREFIX=$startdir/pkg/usr
  make
  make install
  /usr/bin/find $startdir/pkg -name '.packlist' -delete
  /usr/bin/find $startdir/pkg -name '*.pod' -delete
}
