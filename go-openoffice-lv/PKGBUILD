# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>
pkgname=go-openoffice-lv
pkgver=3.2.1
pkgrel=3
_shortver=3.2
_srcurl=http://go-oo.mirrorbrain.org/stable/linux-x86
_ooobasis=${pkgver}/ooobasis${_shortver}-lv
_intver=${pkgver}-9505
pkgdesc="Go-OpenOffice lv language files"
arch=('any')
license=('LGPL')
url="http://go-oo.org/discover/"
makedepends=('rpmextract')
depends=('go-openoffice>={}')

source=(
	${_srcurl}/${_ooobasis}-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-base-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-binfilter-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-calc-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-draw-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-help-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-impress-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-math-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-res-${_intver}.i586.rpm
	${_srcurl}/${_ooobasis}-writer-${_intver}.i586.rpm
	${_srcurl}/${pkgver}/openoffice.org3-lv-${_intver}.i586.rpm
)

md5sums=('83d041fb521c5c61e93ebe7f6198b27f'
         '978f40a6b9f1dd9702f9cdb87c935e44'
         'c809182211e0f04c5dc3a88ad39f65ab'
         '8732cd98039c72b116d839e56ae2e8f6'
         '64e34e292c0f67e2ec76645139e680fb'
         '8f2f3b876fb6aeec786b791850d75f40'
         'd2ba9e5e46d2cd88b56a20ccc966e5ed'
         '20a639303292d65809feb03cbb7e50b7'
         '18c6a1804d626ba1f0c24e1f34393734'
         'aa2a5996a1507f7f961b6968ded97d50'
         'efeac0e3ded7a347cf39bf492063b162')

build() {
	cd ${srcdir}
	for i in *.rpm
		do rpmextract.sh $i
	done

mkdir -p ${pkgdir}/usr/lib/go-openoffice/basis-link
cp -R opt/openoffice.org/basis${_shortver}/* ${pkgdir}/usr/lib/go-openoffice/basis-link
cp -R opt/openoffice.org3/* ${pkgdir}/usr/lib/go-openoffice/basis-link
chown root:root -R ${pkgdir}/usr/lib/go-openoffice
}
