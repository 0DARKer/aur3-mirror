# GtkHTML2 viewer plugin for claws-mail
# To activate it u need to load it manualy in claws-mail-> Configuration -> Plugins 
# Package version 0.27
 
pkgname="claws-gtkhtml2-plugin"
_srcname="gtkhtml2_viewer"
pkgver="0.27"
pkgrel="1"
pkgdesc="Claws Mail HTML viewer plugin"
url="http://www.claws-mail.org/downloads/plugins/"
license=("GPL3")
arch=('i686' 'x86_64')
depends=("claws-mail>=3.7.5")
makedepends=("make")
#source=("http://www.claws-mail.org/downloads/plugins/${_srcname}-$pkgver.tar.gz")
source=("http://www.claws-mail.org/downloads/plugins/${_srcname}-$pkgver.tar.gz")
md5sums=('4ea3180b8f6617f77ae8ae2c819c54f6')

build() {
	cd "${srcdir}/${_srcname}-$pkgver"
	./configure --prefix=/usr || return 1
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
}

