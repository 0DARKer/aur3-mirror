# Maintainer: Karl Kochs <captainhaggy at i2pmail dot org>
# Contributor: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-protodef
pkgver=0.9.4
_scriptid=14048
pkgrel=2
pkgdesc="Tool to help create skeleton implementations of c++ function prototypes"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=2624"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('041664eb516bd3b81280028e2d840142'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/{doc,plugin}
    install -Dm755 ${srcdir}/${pkgname}/doc/* ${pkgdir}/usr/share/vim/doc/
    install -Dm755 ${srcdir}/${pkgname}/plugin/* ${pkgdir}/usr/share/vim/plugin/
    install -Dm755 ${srcdir}/${pkgname}/pullproto.pl ${pkgdir}/usr/share/vim/pullproto.pl
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

