# Contributor: Swen Simon <swsimon at gmail dot com>
#

pkgname=epsxe
pkgver=1.6.0
pkgrel=13
pkgdesc="Enhanced PSX emulator"
url="http://epsxe.com"
arch=('i686' 'x86_64')

[ "$CARCH" == "i686" ] && depends=(gtk)
[ "$CARCH" == "x86_64" ] && depends=(lib32-gtk lib32-ncurses lib32-libxt)

makedepends=('unzip')
license=('unknown')
install=epsxe.install
options=(!strip)

#source=( \
#         \
source=(epsxe.desktop epsxe.png) 

md5sums=('087234e20ae9147f83df24b69fc93bca' 'eb0c46b8ae1355c589792f6be1835e47')
_e160url='http://www.epsxe.com/files/epsxe160lin.zip'
_e152url='http://www.epsxe.com/files/epsxe152lin.zip'
_e160sum='32704cfc77939b9a1bd047f22b70eca2'
_e152sum='5834f34cb904b08d95abda057eff3981'

prepare () {

    cd $srcdir 

    wget $_e160url; md5sum 'epsxe160lin.zip' | grep $_e160sum -q
    wget $_e152url; md5sum 'epsxe152lin.zip' | grep $_e152sum -q

    # extract archives
    unzip -qqo -d 1.6.0 epsxe160lin.zip
    unzip -qqo -d 1.5.2 epsxe152lin.zip

}

package () {

    install -d $pkgdir/opt/$pkgname/1.6.0/{bios,cfg,cheats,memcards,patches,plugins,snap,sstates}
    install -d $pkgdir/opt/$pkgname/1.5.2/{bios,cfg,cheats,memcards,patches,plugins,snap,sstates}
    install -d "$pkgdir/usr/bin"
   
    cd "$srcdir/1.6.0"

    install -Dm 644 "docs/epsxe_linux_en.txt" "$pkgdir/usr/share/doc/$pkgname/README_v1.6.0" 
    install -Dm 755 'epsxe' "$pkgdir/opt/$pkgname/1.6.0/$pkgname"
    install -Dm 644 "keycodes.lst" "$pkgdir/opt/$pkgname/1.6.0/keycodes.lst"

    for items in $(cd cheats ; ls -1 *.cht)
    do 
	install -Dm 644 "cheats/$items" "$pkgdir/opt/$pkgname/1.6.0/cheats/$items"
    done


    cd "$srcdir/1.5.2"

    install -Dm 644 "docs/epsxe_linux_en.txt" "$pkgdir/usr/share/doc/$pkgname/README_v1.5.2"
    
    install -Dm 755 'epsxe' "$pkgdir/opt/$pkgname/1.5.2/$pkgname"
    install -Dm 644 "keycodes.lst" "$pkgdir/opt/$pkgname/1.5.2/keycodes.lst"

    for items in $(cd cheats ; ls -1 *.cht)
    do 
	install -Dm 644 "cheats/$items" "$pkgdir/opt/$pkgname/1.5.2/cheats/$items"
    done

    install -Dm 644 "$srcdir/epsxe.png" "$pkgdir/usr/share/pixmaps/${pkgname}.png"
    install -Dm 644 "$srcdir/epsxe.desktop" "$pkgdir/usr/share/applications/${pkgname}.desktop"

    ln -s /opt/$pkgname/1.6.0/$pkgname -T $pkgdir/usr/bin/$pkgname
    ln -s /opt/$pkgname/1.5.2/$pkgname -T "$pkgdir/usr/bin/$pkgname-1.5.2"

}
