# Contributor: Laszlo Papp <djszapi at gmail com>

pkgname=verilator
pkgver=3.824
pkgrel=1
pkgdesc="A fast simulator for synthesizeable Verilog"
arch=('i686' 'x86_64')
url="http://www.veripool.org/"
license=('GPL')
depends=('gcc-libs')
source=(http://www.veripool.org/ftp/${pkgname}-${pkgver}.tgz)
md5sums=('6e655866de75360916e1778939f2dab1')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
