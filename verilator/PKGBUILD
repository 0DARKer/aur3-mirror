# Contributor: Chris Schwaab christopher.schwaab gmail
# Maintainer: Laszlo Papp <djszapi at gmail com>
pkgname=verilator
pkgver=3.802
pkgrel=1
pkgdesc="A fast simulator for synthesizeable Verilog"
arch=('any')
url="http://www.veripool.org/"
license=('GPL')
depends=('gcc-libs')
source=("http://www.veripool.org/ftp/${pkgname}-${pkgver}.tgz")
md5sums=('bba9eb639b822110738bd4d5b32e0558')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR="$pkgdir/" install || return 1
}
