pkgname=storm
pkgver=0.16.0
pkgrel=1
svnver=0.16
pkgdesc="Storm is an object-relational mapper (ORM) for Python developed at Canonical."
arch=(i686 x86_64)
url="https://storm.canonical.com/"
license=('LGPL')
depends=('python')
source=(http://launchpad.net/storm/trunk/$svnver/+download/$pkgname-$pkgver.tar.bz2)

md5sums=('6627d2a01b7feaedb20b35e557ccdee5')

build() {
  cd $startdir/src/$pkgname-$pkgver
  python setup.py install --root=$startdir/pkg
}
