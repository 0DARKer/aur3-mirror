# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-apptools
pkgver=3.4.1
_githubtag=be1cb50
pkgrel=1
pkgdesc="ETS Application Tools"
arch=('any')
url="https://github.com/enthought/apptools"
license=('BSD')
depends=('python2' 'python-configobj' 'python2-numpy>=1.1'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('python2-distribute')
conflicts=('python-enthought-utils' 'python2-apptools-git' 'python-ets-apptools-svn')
options=(!emptydirs)

source=("https://github.com/enthought/apptools/tarball/${pkgver}")
md5sums=('c64847dd9e9994db21ad8e082bf7cb5e')

build() {
  cd "$srcdir/enthought-apptools-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

