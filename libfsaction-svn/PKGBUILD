pkgname=libfsaction-svn
pkgver=22
pkgrel=1
pkgdesc="Library to perform operations on file systems like delete, copy, move files, create directories..."
arch=('i686' 'x86_64')
url="http://code.google.com/p/libfsaction/"
license=('LGPL')
depends=()
makedepends=('gcc' 'subversion' 'cmake')
options=()
conflicts=('libfsaction')
provides=('libfsaction')
source=()
md5sums=()

_svntrunk=https://libfsaction.googlecode.com/svn/trunk/
_svnmod=libfsaction

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd libfsaction && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir libfsaction-build
	cd libfsaction-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/libfsaction
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/libfsaction-build

}
