# Contributor: Proktor <proktor86@gmail.com>
pkgname=moorie-devel
pkgver=0.1.6_r70
rev=5a6194027f83
pkgrel=3
pkgdesc="Moorhunt-compatible, lightweight file-sharing client for Linux"
arch=(i686)
url="http://linux.bydg.org/~yogin/"
license=('GPL')
depends=(boost gmime curl mcrypt)
makedepends=(mercurial automake autoconf)
provides=(moorie)
conflicts=(moorie)
source=(header.patch)
md5sums=()	 

build() {
  cd $srcdir

  hg clone -r $rev http://hg.sharesource.org/moorie
  cd moorie    
  patch -p0 -i $startdir/header.patch
  ./bootstrap.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
