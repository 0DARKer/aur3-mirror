pkgname=mdbtools-devel
pkgver=0.6debian
pkgrel=3
pkgdesc="mdbtools is abandoned upstream . this package comes from debian ."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/mdbtools/"
license=('LGPL' 'GPL')
depends=('libgnomeui' 'libglade' 'unixodbc' 'sqlite3')
makedepends=()
options=('!libtool')
provides=('mdbtools')
conflicts=('mdbtools')
replaces=('mdbtools')
if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='amd64'
    md5sums=('f9d18983610c09bb0f0209535ab271c7'
             '7fe95eef41c33180188a57a15852977c'
             '485d66831951ce10646cfd6bc6de96ad'
             '7e615288674f30a17bdfeb41b5c3dc6b')
elif [ "${CARCH}" = 'i686' ]; then
    ARCH='i386' 
    md5sums=('22d11c4f3cbc42fe25a1a7bedef51b12'
         '5b7999068cb10006e7ebac1010ecb98b'
         '2d5f48f0c0053cab166ce8ae3cc1b9d5'
         'f7e3744c0360883428e85321b07ccbd8')
fi
source=(http://ftp.de.debian.org/debian/pool/main/m/mdbtools/mdbtools_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb
http://ftp.de.debian.org/debian/pool/main/m/mdbtools/libmdbtools_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb
http://ftp.de.debian.org/debian/pool/main/m/mdbtools/mdbtools-dev_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb
http://ftp.de.debian.org/debian/pool/main/m/mdbtools/mdbtools-gmdb_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb)

build() {
  cd $srcdir
  ar -x mdbtools_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb
  tar -xvvf data.tar.gz
  rm -fv {control,data}.tar.gz
  ar -x libmdbtools_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb
  tar -xvvf data.tar.gz
  rm -fv {control,data}.tar.gz
  ar -x mdbtools-dev_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb
  tar -xvvf data.tar.gz
  rm -fv {control,data}.tar.gz
  ar -x mdbtools-gmdb_0.5.99.0.6pre1.0.20051109-6_${ARCH}.deb
  tar -xvvf data.tar.gz
  rm -fv {control,data}.tar.gz
  install -d $pkgdir/usr
  cp -rfv ./usr/* $pkgdir/usr
}
