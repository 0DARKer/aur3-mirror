# Maintainer: twa022 <twa022 at gmail dot com>

_pkgname=cinnamon-screensaver
pkgname=${_pkgname}-git
pkgver=20130123
pkgrel=1
pkgdesc="Screensaver for cinnamon desktop"
arch=('i686' 'x86_64')
url="https://github.com/linuxmint/cinnamon-screensaver"
license=('GPL')
source=('cinnamon-screensaver.pam')
depends=('dbus-glib' 'libgnomekbd' 'cinnamon' 'gsettings-desktop-schemas' 'libsystemd')
makedepends=('pkgconfig' 'intltool' 'libxss')
conflicts=('gnome-screensaver')
options=('!emptydirs')

_gitroot=git://github.com/linuxmint/cinnamon-screensaver.git
_gitname=cinnamon-screensaver

build() {
  msg "Connecting to GIT server...."	

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin && cd ..
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  [ -d "$_gitname-build" ] && rm -rf "$_gitname-build"
  git clone "$_gitname" "$_gitname-build"
  cd "$_gitname-build"/

  sed -i "s|AM_CONFIG_HEADER|AC_CONFIG_HEADERS|g" configure.ac
  ./autogen.sh --prefix=/usr --sysconfdir=/etc \
      --libexecdir=/usr/lib/cinnamon-screensaver \
      --localstatedir=/var \
      --with-mit-ext --with-systemd 
  make
}

package() {
  cd "$_gitname-build"/
  make DESTDIR="${pkgdir}" install
  install -Dm644 ../cinnamon-screensaver.pam "$pkgdir/etc/pam.d/cinnamon-screensaver"
#  rm "$pkgdir"/usr/bin/{gnome-screensaver,gnome-screensaver-command}

}

sha256sums=('c19870c4f2d6e91ba0eea2603753a74e0c5c82ff5fa3cacb1198027a38d0a6cb')
