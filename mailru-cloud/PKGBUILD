# Contributor: ReNoM <renom@list.ru>
pkgname=mailru-cloud
pkgver=13.08.2801
pkgrel=1
pkgdesc="Mail.Ru free online storage."
arch=('i686' 'x86_64')
url="http://cloud.mail.ru/"
license="custom"
#depends=()
#makedepends=()
if [ "$CARCH" == "i686" ]; then
	url_arch="i386"
else
	url_arch="amd64"
fi
source=(https://desktopcloud.cdnmail.ru/linux/$url_arch/cloud)
[ "$CARCH" == "i686" ] && md5sums=('ee5ec14dae9c8cb06f0321cf74af9718')
[ "$CARCH" == "x86_64" ] && md5sums=('5064debea9f7c183debe82e513e737e0')

build() {
	mkdir -p $pkgdir/usr/bin/
	install -m644 $srcdir/cloud $pkgdir/usr/bin/mailru-cloud
	chmod +x $pkgdir/usr/bin/mailru-cloud
}
