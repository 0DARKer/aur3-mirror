# Contributor: ReNoM <renom@list.ru>
pkgname=mailru-cloud
pkgver=14.01.1500
pkgrel=1
pkgdesc="Mail.Ru free online storage."
arch=('i686' 'x86_64')
url="http://cloud.mail.ru/"
license="custom"
#depends=()
#makedepends=()
if [ "$CARCH" == "i686" ]; then
	url_arch="i386"
else
	url_arch="amd64"
fi
source=(https://desktopcloud.cdnmail.ru/linux/$url_arch/cloud)
[ "$CARCH" == "i686" ] && md5sums=('566163982cc8b6feeaaff71603db8696')
[ "$CARCH" == "x86_64" ] && md5sums=('5038523efa098a9693365de0a8b9d37e')

package() {
	mkdir -p $pkgdir/usr/bin/
	install -m644 $srcdir/cloud $pkgdir/usr/bin/mailru-cloud
	chmod +x $pkgdir/usr/bin/mailru-cloud
}
