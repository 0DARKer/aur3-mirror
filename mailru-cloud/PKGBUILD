# Contributor: ReNoM <renom@list.ru>
pkgname=mailru-cloud
pkgver=15.03.0012
pkgrel=1
pkgdesc="Client of Cloud@Mail.Ru (Mail.Ru free online storage)."
 
arch=("i686" "x86_64")
 
url="http://cloud.mail.ru/"
license=("custom")
 
depends=("libsm" "gtk2")

arch=`uname -m`

case "$arch" in
	"i686")
		source=("https://desktopcloud.cdnmail.ru/linux/i386/cloud")
		sha256sums=("28d2b236042f41e13a104468f191990c702c3b3e634e8342a734284ee2900be5")
		;;
	"x86_64")
		source=("https://desktopcloud.cdnmail.ru/linux/amd64/cloud")
		sha256sums=("6887f3e9db342baa284bb9ccbd0fdf6dcdeb2679454cf5caef445b1c69217a0f")
		;;
	*)
		echo "Unsupported arch: $arch"
		exit 1
		;;
esac

source+=("https://lh6.ggpht.com/wIptRtPVpeJADYTB_kJaGTpgTzdYKdvo7y6jsVudWpSCUsD7px_-il4-pjsjULMfZw" "https://cloud.mail.ru/LA/index.html" "mailru-cloud.desktop")
sha256sums+=("f9c26b226a577d4a708eee393f86b36b8f079cebabe645734613731156949684" "59ac32892873abc3062564b08e2f0734dd6b26b7d44060cb91bcf2bebee0871e" "88fd84cd7f5ca8495e93d3abf79e1a8b6e5b5660d741153f4d8afa6542c8d65a")

package () {
	mkdir -p $pkgdir/usr/share/{applications,pixmaps,licenses/${pkgname}}
	install -Dm755 $srcdir/cloud $pkgdir/usr/bin/${pkgname}
	install -Dm644 $startdir/mailru-cloud.desktop $pkgdir/usr/share/applications/
	install -Dm644 $startdir/wIptRtPVpeJADYTB_kJaGTpgTzdYKdvo7y6jsVudWpSCUsD7px_-il4-pjsjULMfZw $pkgdir/usr/share/pixmaps/mailru-cloud.png
	install -Dm644 $startdir/index.html $pkgdir/usr/share/licenses/${pkgname}/LICENSE.html
}

