# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=dhcpcd-hook-pdnsd
pkgver=0.1.0.r0.gb55a475
pkgrel=1
pkgdesc="Hook for dhcpcd to add domain name servers to pdnsd (dns caching proxy)"
arch=('any')
depends=('pdnsd' 'dhcpcd')
makedepends=('git')
url="http://www.eworm.de/"
license=('GPL')
source=('git://github.com/eworm-de/dhcpcd-hook-pdnsd.git')
install=dhcpcd-hook-pdnsd.install
    
pkgver() {
	cd dhcpcd-hook-pdnsd/

	if GITTAG="$(git describe --abbrev=0 --tags 2>/dev/null)"; then
		echo "$(sed -e "s/^${pkgname%%-git}//" -e 's/^[-_/a-zA-Z]\+//' -e 's/[-_+]/./g' <<< ${GITTAG}).r$(git rev-list --count ${GITTAG}..).g$(git log -1 --format="%h")"
	else
		echo "0.r$(git rev-list --count master).g$(git log -1 --format="%h")"
	fi
}

package() {
	cd dhcpcd-hook-pdnsd/

	install -D -m 0644 pdnsd.conf.dhcpcd-hook ${pkgdir}/etc/pdnsd.conf.dhcpcd-hook
	install -D -m 0644 21-pdnsd ${pkgdir}/usr/lib/dhcpcd/dhcpcd-hooks/21-pdnsd
}

sha256sums=('SKIP')
