# Contributor: Peter Baldwin <bald_pete@hotmail.com>
# Contributor (modifications): Bruno Tsubouchi Yporti <brunoyporti@gmail.com>
# Contributor (modifications): Igor Nemilentsev <trezorg@gmail.com>
# For Lexmark Z601, Lexmark Z602, Lexmark Z604, Lexmark Z605, Lexmark Z615, and Dell 720
# Partial suport in others printers (e.g. Lexmark X1250)
pkgname=z600
pkgver=1.0
pkgrel=1
pkgdesc="Lexmark Z600 Printer Driver"
makedepends=('rpmunpack' 'cpio' 'gzip' 'bash')
depends=('cups' 'libstdc++5')
arch=('i686')
license=('Freeware')
url="http://www.lexmark.com/"
source=(http://www.downloaddelivery.com/downloads/cpd/CJLZ600LE-CUPS-1.0-1.TAR.gz)
md5sums=('c0e35c9819b25e587e75a5a743c49f18')

build() {
  cd $startdir/src
  tar xf CJLZ600LE-CUPS-1.0-1.TAR.gz
  tail -n +143 z600cups-1.0-1.gz.sh > install.tar.gz
  tar xf install.tar.gz
  rpmunpack z600llpddk-2.0-1.i386.rpm
  rpmunpack z600cups-1.0-1.i386.rpm
  gzip -f -d z600cups-1.0-1.cpio.gz
  gzip -f -d z600llpddk-2.0-1.cpio.gz
  cd $startdir/pkg
  mkdir -p ./usr/lib/cups/backend/
  mkdir -p ./usr/lib/cups/filter/
  mkdir -p ./usr/share/cups/model/
  mkdir -p ./usr/local/z600llpddk/
  mkdir -p ./usr/include/lexmark/
  mkdir -p ./usr/local/z600llpddk/utility/
  cpio -i < $startdir/src/z600cups-1.0-1.cpio
  cpio -i < $startdir/src/z600llpddk-2.0-1.cpio
}
