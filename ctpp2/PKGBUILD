# Maintainer: Valentin V. Bartenev <ne@vbart.ru> http://vbart.info/

pkgname=ctpp2
pkgver=2.7.1
pkgrel=1
pkgdesc='CTPP (or CT++) is the fastest template engine which completely written in C++'
arch=(i686 x86_64)
url='http://ctpp.havoc.ru/en/'
optdepends=(
  'gettext: gettext support'
  'iconv: iconv support'
  'md5: md5 support'
)
makedepends=(cmake make)
source=("http://ctpp.havoc.ru/download/ctpp2-$pkgver.tar.gz" calls.tmpl)
license=('custom:BSD-like')
md5sums=(4480a8090ac891c809f69a2cfc2f6852 019916b90b0c04652bc1e5fd63358386)
sha256sums=(9ff78816b69ea68f94f6fe4310b0eeb92c424e4ce15104064435cc3e017603df
            098d9b5846e2e85eb881f915bb12cf8a2907eea8aabe0b61143b765b1ffe126f)
_srcdir="$srcdir/$pkgname-$pkgver"

build() {
  cd "$_srcdir"
  mkdir build
  cd build
  cmake -Wno-dev -DCMAKE_INSTALL_PREFIX=/usr -DSKIP_RELINK_RPATH:BOOL=ON ..
  make VERBOSE=1
  make DESTDIR="$pkgdir" install
  install -Dm 644 ../LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

check() {
  cp "$srcdir/calls.tmpl" "$_srcdir/tests/testdata/"
  cd "$_srcdir/build"
  env LD_LIBRARY_PATH=".:$LD_LIBRARY_PATH" make test
}

# Enjoy! ;)