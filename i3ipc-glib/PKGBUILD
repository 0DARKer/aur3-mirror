# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=i3ipc-glib
pkgver=0.2.0
pkgrel=1
epoch=
pkgdesc="A C interface library to i3wm"
arch=('i686' 'x86_64')
url="https://github.com/acrisci/i3ipc-glib"
license=('GPL3')
groups=()
depends=('libxcb' 'json-glib')
makedepends=()
checkdepends=()
optdepends=('i3ipc-lua' 'i3ipc-python' 'i3ipc-gjs')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/acrisci/i3ipc-glib/releases/download/v0.2.0/i3ipc-0.2.0.tar.gz")
noextract=()
md5sums=("fb31eafec8fa22ff29c0670120a05101")

build() {
    cd "$srcdir/i3ipc-$pkgver"
    ./configure --prefix=/usr
    make
}

package() {
    cd "$srcdir/i3ipc-$pkgver"
	make DESTDIR="$pkgdir/" install
}
