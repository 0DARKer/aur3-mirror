# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=i3ipc-glib
_gitname=i3ipc-glib
pkgver=0.1.1
pkgrel=1
epoch=
pkgdesc="A C interface library to i3wm"
arch=('i686' 'x86_64')
url="https://github.com/acrisci/i3ipc-glib"
license=('GPL3')
groups=()
depends=('libxcb' 'gobject-introspection' 'json-glib')
makedepends=()
checkdepends=()
optdepends=('i3ipc-lua' 'i3ipc-python' 'i3ipc-gjs')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git://github.com/acrisci/i3ipc-glib.git")
noextract=()
md5sums=("SKIP")

build() {
    cd "$srcdir/$_gitname"
    git checkout "v$pkgver"
    ./autogen.sh PREFIX=/usr
    make
}

package() {
    cd "$srcdir/$_gitname"
	make DESTDIR="$pkgdir/" install
}
