# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=i3ipc-glib
pkgver=0.3.0
pkgrel=1
epoch=
pkgdesc="A C interface library to i3wm"
arch=('i686' 'x86_64')
url="https://github.com/acrisci/i3ipc-glib"
license=('GPL3')
groups=()
depends=('libxcb' 'json-glib')
makedepends=()
checkdepends=()
optdepends=('i3ipc-lua: Lua language bindings'
            'i3ipc-python: Python language bindings'
            'i3ipc-gjs: JavaScript language bindings')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/acrisci/i3ipc-glib/releases/download/v0.3.0/i3ipc-0.3.0.tar.gz")
noextract=()
md5sums=("03b29022e73df83e87e73440bdea007a")

build() {
    cd "$srcdir/i3ipc-$pkgver"
    ./configure --prefix=/usr
    make
}

package() {
    cd "$srcdir/i3ipc-$pkgver"
	make DESTDIR="$pkgdir/" install
}
