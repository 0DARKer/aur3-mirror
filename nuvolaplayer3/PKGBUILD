pkgname=nuvolaplayer3
pkgver=3.0.0~201504032031.bf15934
pkgrel=1
pkgdesc="Cloud music integration for your Linux desktop"
PKGEXT='.pkg.tar'
arch=('x86_64')
options=(strip)
url="https://tiliado.eu/nuvolaplayer/"
rpmurl=https://tiliado.eu/nuvolaplayer/repository/rpm/fc21/x86_64/stable/packages
license=('GPL')
depends=('rpmextract' 'diorite-git' 'vala' 'webkit2gtk' 'libarchive' 'gtk3' 'libnotify' 'json-glib' 'flashplugin')
conflicts=('nuvolaplayer' 'nuvolaplayer-git' 'nuvolaplayer-beta')
install=$pkgname.install
md5sums=('9c10d0c3d203207b5e67fb55bd050155'
'66857bc98b5694392a47453f5083b89f'
'90751883b6b4979e2c691257ffc1f590'
'd3f24f138e5457c13ea2d3710cd643ae'
'6a7b28e3122b2b7f5a4fce9789085ddd'
'52a7b8e2b8d10eebf21b01c860ab0436'
'375f768d9ca4adae004033edd56585ae'
'e16049301d028adbfecd71b64149b13e'
'64656c5aa36e442b5bb0f897e6993664'
'81eaa752bb8d28bf929153485ed32db0')
source=("$rpmurl/$pkgname-$pkgver-6.fc21.x86_64.rpm"
        "$rpmurl/$pkgname-bandcamp-2.0-1.fc21.x86_64.rpm"
        "$rpmurl/$pkgname-deezer-2.3-1.fc21.x86_64.rpm"
        "$rpmurl/$pkgname-google-play-music-5.1-1.fc21.x86_64.rpm"
