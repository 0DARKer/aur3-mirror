        "$rpmurl/$pkgname-rdio-4.0-1.fc21.x86_64.rpm"
        "$rpmurl/$pkgname-spotify-2.0-1.fc21.x86_64.rpm"
        "$rpmurl/$pkgname-this-is-my-jam-2.0-1.fc21.x86_64.rpm")
package() {
  rpmextract.sh *
  chmod -R g-w usr
  mkdir usr/lib
  mv usr/lib64/* usr/lib/
  rmdir usr/lib64
  mv usr "${pkgdir}"
}
