# Maintainer: ValHue <vhuelamo at gmail dot com>

pkgname=dayfolder
pkgver=1.5.1
pkgrel=2
pkgdesc="DayFolder is a friend of those who like a clean desktop"
arch=('i686' 'x86_64')
url="https://launchpad.net/dayfolder"
license=('GPL3')
depends=('libappindicator3' 'hicolor-icon-theme' 'libgee')
install="${pkgname}.install"

_source_arch="i386"
[ "$CARCH" = "x86_64" ] && _source_arch="amd64"

source=("https://launchpad.net/~thejambi/+archive/thejambi/+files/${pkgname}_${pkgver}-1_${_source_arch}.deb")
md5sums=('10c13cdc8c0676f934760c7475bfba32')

[ "$CARCH" = "x86_64" ] && md5sums[0]='10c13cdc8c0676f934760c7475bfba32'

build() {
    cd "${srcdir}"
    ar vx ${pkgname}_${pkgver}-1_${_source_arch}.deb
}

package() {
    cd "${srcdir}"
    tar -C "${pkgdir}" -xvzf data.tar.gz
    rm -rf ${pkgdir}/usr/doc
}
