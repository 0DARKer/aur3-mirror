# Maintainer: sidious/SiD <miste78 web.de>  
# Contributor: Angel 'angvp' Velasquez <angvp[at]archlinux.com.ve> 
pkgname=gr-lida 
pkgver=0.9.1
pkgrel=2 
pkgdesc="Front-End for DOSBox and ScummVM" 
arch=('i686' 'x86_64') 
license=('GPL2') 
url="http://sharesource.org/project/grlida/" 
depends=('phonon') 
optdepends=('dosbox: for DOSBox support' 'scummvm: for ScummVM support')
source=(http://dl.sharesource.org/grlida/GR-lida-$pkgver.tar.bz2 \
        gr-lida.desktop) 

md5sums=('e9595643bf36bfb83d81510b71981ab5'
         'bfbb7c40e5a8771e1f2ca5441bf13d72')
         
build() { 
    cd ${srcdir}/GR-lida-${pkgver}/ 
    /usr/bin/qmake 
    mkdir -p ${pkgdir}/usr/bin
    make DESTDIR=${pkgdir}/usr/bin/gr-lida TARGET=${pkgdir}/usr/bin/gr-lida
    install -Dm644 ${srcdir}/GR-lida-${pkgver}/gr-lida.png ${pkgdir}/usr/share/pixmaps/gr-lida.png 
    install -Dm644 ${srcdir}/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop 
}
