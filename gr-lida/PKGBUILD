pkgname=gr-lida
pkgver=0.10.0
pkgrel=1
pkgdesc="Front-End for DOSBox and ScummVM"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://www.gr-lida.org"
depends=('phonon' 'poppler-qt')
optdepends=('dosbox: for DOSBox support' 'scummvm: for ScummVM support')
#source=("http://dl.sharesource.org/grlida/GR-lida-$pkgver.tar.bz2")
source=("gr-lida.zip::https://nodeload.github.com/Monthy/gr-lida/zipball/master")
md5sums=('b13950ea7adb444b5e49a878d3d35cb7')

build() {
   cd "${srcdir}"/*-gr-lida-*
   qmake gr-lida.pro
   make
}

package () {
   cd "${srcdir}"/*-gr-lida-*
   make INSTALL_ROOT="${pkgdir}" install
}

