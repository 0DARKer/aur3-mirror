pkgname=pidgin-gnome-shell-extension-git
pkgver=20110527
pkgrel=1
epoch=
pkgdesc="A GNOME Shell extension that provides integration with Pidgin."
arch=('any')
url="https://github.com/kagesenshi/gnome-shell-extensions-pidgin"
license=('unknown')
groups=()
depends=('gnome-shell' 'pidgin')
makedepends=('git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=()

_gitroot="https://github.com/kagesenshi/gnome-shell-extensions-pidgin"
_gitname="hack-patches"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/pidgin@gnome-shell-extensions.gnome.org"
  cd "$srcdir/$_gitname"
  sed -i "s/\"3.0.1\"/\"3.0.1\", \"3.0.2\"/" metadata.json
  cp extension.js metadata.json "$pkgdir/usr/share/gnome-shell/extensions/pidgin@gnome-shell-extensions.gnome.org/"
} 
