# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=amarok2librefm
pkgver=0.2
pkgrel=1
pkgdesc="This script will scrobble your listening habits to LibreFM"
arch=('any')
url="http://opendesktop.org/content/show.php/?content=107339"
license=('GPL')
depends=('amarok' 'lastfmsubmitd')
source=("http://opendesktop.org/CONTENT/content-files/107339-Amarok2LibreFM.tar.gz")
md5sums=('0849d82723685bd8825984e368942d1e')

package() {
  cd ${srcdir}/Amarok2LibreFM

  install -d ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}
  install -Dm644 {config,main}.js script.spec \
    ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}

  install -d ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}/lang
  install -Dm644 lang/en.js \
    ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}/lang/en.js
}
