# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfwm4-devel
pkgver=4.7.4
pkgrel=1
pkgdesc="Xfce window manager (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('libxfce4ui-devel>=4.7.5' 'libwnck' 'gtk2' 'glib2' 'xfconf-devel' 'dbus-glib' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool' 'xfce4-dev-tools-devel')
conflicts=('xfwm4' 'xfwm4-git')
replaces=('xfwm4' 'xfwm4-git')
options=('!libtool')
install=xfwm4.install
source=(http://archive.xfce.org/src/xfce/xfwm4/4.7/xfwm4-${pkgver}.tar.bz2)
md5sums=('206fc123ee2010860e206fe0baa87f40')

build() {
  cd ${srcdir}/xfwm4-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static \
    --enable-compositor --enable-xsync
  make
}

package() {
	cd ${srcdir}/xfwm4-${pkgver}
	make DESTDIR=${pkgdir} install
}
