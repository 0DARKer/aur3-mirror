pkgname=eclipse-emf
pkgver=2.9.0
_reldate=201306100406
pkgrel=1
pkgdesc="EMF and XSD frameworks for the Eclipse platform"
arch=('any')
url="http://www.eclipse.org/modeling/emf/"
license=('EPL')
depends=('eclipse>=3.5')
changelog=ChangeLog
_mirror="http://www.eclipse.org/downloads/download.php?r=1&mirror_id=514&file="
source=("$_mirror/modeling/emf/emf/downloads/drops/${pkgver}/R${_reldate}/emf-xsd-SDK-${pkgver}.zip")

sha256sums=('385e33fe602e0adbabd080da5a809f8855a851b8159a0a7f062fc9aced40adf3')

package() {
_dest="${pkgdir}"/usr/share/eclipse/dropins/${pkgname/eclipse-}/eclipse

cd "${srcdir}/eclipse"

# Features
find features -type f | while read _feature ; do
if [[ ${_feature} =~ (.*\.jar$) ]] ; then
install -dm755 "${_dest}"/${_feature%*.jar}
cd "${_dest}"/${_feature/.jar}
jar xf "${srcdir}/${_feature}"
else
install -Dm644 ${_feature} "${_dest}/${_feature}"
fi
done

# Plugins
find plugins -type f | while read _plugin ; do
install -Dm644 ${_plugin} "${_dest}/${_plugin}"
done
}
