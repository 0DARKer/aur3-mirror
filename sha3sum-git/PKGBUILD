# Maintainer: onny <onny@project-insanity.org>
# Contributor: onny <onny@project-insanity.org>

pkgname=sha3sum-git
pkgver=20130305
pkgrel=1
pkgdesc="SHA-3/Keccak checksum utility"
arch=('i686' 'x86_64')
url="https://github.com/maandree/sha3sum"
license="GPL3"
provides=('sha3sum')
conflicts=('sha3sum')
_gitroot="https://github.com/maandree"
_gitname="sha3sum"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone "${_gitroot}/${_gitname}.git"
    	cd sha3sum
    git pull --rebase
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."
  
  make c
} 
package () {
  install -D -m 755 "${srcdir}/sha3sum/bin/c/sha3sum" "$pkgdir/usr/bin/sha3sum"
}

