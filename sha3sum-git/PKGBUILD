# Maintainer: onny <onny@project-insanity.org>
# Contributor: onny <onny@project-insanity.org>

pkgname=sha3sum-git
pkgver=6d1a4c1
pkgrel=1
pkgdesc="SHA-3/Keccak checksum utility"
arch=('i686' 'x86_64')
url="https://github.com/maandree/sha3sum"
license="GPL3"
provides=('sha3sum')
conflicts=('sha3sum')
source=('git+https://github.com/maandree/sha3sum')
md5sums=('SKIP')

pkgver() {
  cd "$SRCDEST/sha3sum"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/sha3sum"
  make c
} 
package () {
  install -D -m 755 "${srcdir}/sha3sum/bin/c/sha3sum" "$pkgdir/usr/bin/sha3sum"
}

