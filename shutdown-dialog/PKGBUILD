# Maintainer: doorknob60 <doorknob60 at gmail dot com>

pkgname=shutdown-dialog
pkgver=1
pkgrel=1
pkgdesc="A dummy package, please install pygtk-shutdown-svn instead. This will only provide a symlink from pygtk-shutdown to shutdown-dialog.py"
arch=(i686 x86_64)
# URL to page of original project
# url="http://www.penguindevelopment.org/index.php?title=Release:shutdown-dialog"
url="https://aur.archlinux.org/packages.php?ID=49761"
license=('GPL')
depends=('pygtk-shutdown-svn')

build() {
install -d "$pkgdir/usr/bin"
ln -sf /usr/bin/pygtk-shutdown "$pkgdir/usr/bin/shutdown-dialog.py"
}
