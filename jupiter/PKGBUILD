# Maintainer: Matthew Tompsett <matthewbpt@gmail.com>

pkgname=jupiter
pkgver=0.0.50
pkgrel=3
pkgdesc="Simple, easy to use hardware and power management applet for all i386 and x86_64 Linux laptops, and netbooks"
url="http://sourceforge.net/projects/jupiter"
license=('GPL')
makedepends=('rpmextract')
depends=('mono' 'gtk-sharp-2')
optdepends=('rfkill: Tool to query and set the rfkill state of wireless devices' 'xorg-xrandr: Primitive command line interface to RandR extension' 'libnotify: Desktop notification library')
arch=('any')
install=${pkgname}.install
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-${pkgver}-3.noarch.rpm)
md5sums=('dc41d05042e5add923f7202e6bcf9e36')

build() {
  rpmextract.sh *.rpm
  cp -R ${srcdir}/{etc,usr,var} ${pkgdir}/
}
