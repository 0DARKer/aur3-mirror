pkgname=jupiter
pkgver=0.1.2
pkgrel=2
pkgdesc="Simple, easy to use hardware and power management applet for all i386 and x86_64 Linux laptops, and netbooks"
url="http://sourceforge.net/projects/jupiter"
license=('GPL')
makedepends=('rpmextract')
depends=('mono' 'gtk-sharp-2' 'xorg-xrandr')
optdepends=('rfkill: Tool to query and set the rfkill state of wireless 
devices' 'libnotify: Desktop notification library')
arch=('any')
install=${pkgname}.install
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-${pkgver}-1.noarch.rpm)
md5sums=('db7bae0f73c41adc5bfa2a1bace18333')

build() {
  rpmextract.sh *.rpm
  cp -R ${srcdir}/{etc,usr,var} ${pkgdir}/
}
