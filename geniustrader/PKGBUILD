# Maintainer: perlawk

pkgname=geniustrader
pkgver=r690
pkgrel=1
pkgdesc="GeniusTrader aims to be a full featured toolbox to create trading systems."
arch=('i686' 'x86_64')
url="http://geniustrader.org/"
license=('GPL')
options=()
depends=(perl perl-date-calc perl-date-manip)
makedepends=()
install=$pkgname.install
source=(http://geniustrader.org/download/${pkgname}_${pkgver}.tgz
options )
md5sums=('6d489b0ab7fd565b9dea0c7dcbdd10f0'
         '7dbb6136a54e731138196a2b9e016464')


build() {
  cd "$srcdir/$pkgname"
}

package() {
  mkdir -p "$pkgdir/usr/share/$pkgname"
  mkdir -p "$pkgdir/usr/share/perl5/vendor_perl/"
  cd "$srcdir/$pkgname"
  cp -a Windows_Installer/data $pkgdir/usr/share/$pkgname
  cp -a GT Scripts $pkgdir/usr/share/$pkgname
  cp $srcdir/options $pkgdir/usr/share/$pkgname/
  cd $pkgdir/usr/share/perl5/vendor_perl
  ln -s ../../$pkgname/GT 
}

