# Maintainer: Adam Vogt <vogt.adam@gmail.com>
pkgname=hpfem-hermes-git
pkgver=20130113
pkgrel=1
pkgdesc=""
arch=('x86_64' 'i686')
url="http://hpfem.org/hermes/"
license=('LGPL')
groups=()
depends=('gcc-fortran' 'gcc' 'freeglut' 'suitesparse' 'xerces-c' 'xsd' 'anttweakbar')
makedepends=('git' 'cmake')
provides=('hpfem-hermes')
conflicts=()
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=git://github.com/hpfem/hermes.git
_gitname=hermes

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  echo "
  set(H2D_WITH_TEST_EXAMPLES NO)
  set(H2D_WITH_TESTS NO)
  set(WITH_TRILINOS YES)
  set(H2D_WITH_VIEWER_GUI YES)
  set(TARGET_ROOT /usr)" > CMake.vars

  cmake -DCMAKE_INSTALL_PREFIX="$destdir/usr" .
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
