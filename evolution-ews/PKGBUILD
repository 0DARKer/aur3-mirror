pkgname=evolution-ews
pkgver=20110727
pkgrel=1
pkgdesc="Evolution-EWS (Exchange Web Services)"
arch=('i686' 'x86_64')
license=('GPL')
url="http://live.gnome.org/Evolution/EWS"
depends=('evolution-data-server' 'gtkhtml4' 'gnome-desktop' 'libunique3')
makedepends=('git' 'intltool' 'evolution' 'gnome-common' 'gtk-doc')
options=('!libtool' '!emptydirs')
source=()
md5sums=()

_gitroot="git://git.gnome.org/evolution-ews"
_gitname="evolution-ews"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull
    msg "The local files are updated."
  else
    git clone $_gitroot
    msg "GIT checkout done or server timeout"
  fi

  msg "Starting make..."

  cd "$srcdir/$_gitname"

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --libexecdir=/usr/lib/evolution --disable-static \
    --enable-gtk3
  make
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="${pkgdir}" install
}
