pkgname=cpyrit-cuda
pkgver=0.2.4
pkgrel=1
pkgdesc="Pyrit support for Nvidia-CUDA."
url="http://code.google.com/p/pyrit/"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('python' 'openssl' 'zlib' 'nvidia' 'pyrit')
makedepends=('gcc' 'python' 'cuda-toolkit')
source=(http://pyrit.googlecode.com/files/CPyrit-CUDA-${pkgver}.tar.gz)
md5sums=('f3e91b784c4ff1306406537ecc42e347')

build() {
  cd ${srcdir}/CPyrit-CUDA-${pkgver}
  python setup.py build
  python setup.py install --root=${pkgdir}
}
