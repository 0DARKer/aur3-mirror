pkgname=mpfi
pkgver=1.4
pkgrel=1
pkgdesc="C library for interval arithmetic"
arch=('i686' 'x86_64')
url="http://perso.ens-lyon.fr/nathalie.revol/software.html"
license=('GPL')
depends=('gmp' 'mpfr')
source=(http://gforge.inria.fr/frs/download.php/22256/mpfi-$pkgver.tar.gz)

build() {
  cd "$startdir/src/mpfi-$pkgver"

  ./configure --prefix=/usr --enable-shared 
  make || return 1
  make DESTDIR="$pkgdir" install
  rm $pkgdir/usr/share/info/dir
}

md5sums=('ec3d3336db32cbba02b0baea1e661cc3')
