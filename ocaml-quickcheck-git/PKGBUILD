# Maintainer: Sergei Lebedev <superbobry@gmail.com>
pkgname=ocaml-quickcheck-git
pkgver=20110912
pkgrel=1
pkgdesc="OCaml port of QuickCheck testing framework."
arch=('i686' 'x86_64')
url="https://github.com/camlunity/ocaml-quickcheck"
license='MIT'
depends=('ocaml' 'ocaml-findlib')
makedepends=('git')
provides=('ocaml-quickcheck')
conflicts=('ocaml-quickcheck')

_gitroot="https://github.com/camlunity/ocaml-quickcheck.git"
_gitname=${pkgname/-git/}


build () {
  OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"

  cd "$srcdir"

  msg "Connecting to GIT server..."

  if [ -d "$srcdir/$_gitname" ]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -rf "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make || return 1
}

package () {
  OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"

  cd "$srcdir/$_gitname-build"

  mkdir -p "${OCAMLFIND_DESTDIR}"
  OCAMLFIND_DESTDIR="${OCAMLFIND_DESTDIR}" make install
}
