# Contributor: Gergely Tamas <dice@mfa.kfki.hu>
pkgname=mbr
pkgver=1.1.10
pkgrel=1
pkgdesc="a replacement master boot record"
url="http://www.chiark.greenend.org.uk/~neilt/mbr/"
license="GPL"
depends=('glibc')
arch=('i686')
source=(http://www.chiark.greenend.org.uk/~neilt/mbr/$pkgname-$pkgver.tar.gz)
md5sums=('27c3854edf80716158001eec59634972')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr CFLAGS="-fno-strict-aliasing"
  make || return 1
  make DESTDIR=$startdir/pkg install
}
