# Maintainer: Uwe <keksvernichter at gmail.com> 
pkgname=mpn
pkgver=1.0
pkgrel=2
pkgdesc="MPNotifier is a lightweight client for MPD displaying a popup notification each time a new song is played"
arch=('i686' 'x86_64')
url="http://chadok.info/mpn/"
license=('GPLv2')
depends=('python-notify' 'python-mpd' 'python-yaml')
source=(http://chadok.info/mpn/$pkgname-$pkgver.tar.gz)
md5sums=('5cab6ae1efefbe284c63921e27370ddc')

build() {
  mkdir -p ${startdir}/pkg/usr/share/doc/mpnotifier
  mkdir -p ${startdir}/pkg/usr/share/licenses/${pkgname}
  mkdir -p ${startdir}/pkg/usr/bin

  sed -i "s#/usr/bin/python#/usr/bin/python2#" ${srcdir}/${pkgname}-${pkgver}/mpn.py

  install -D -m755 ${srcdir}/${pkgname}-${pkgver}/mpn.py ${pkgdir}/usr/bin/mpn
  install -D -m644 ${srcdir}/${pkgname}-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
  install -D -m744 ${srcdir}/${pkgname}-${pkgver}/mpnrc ${pkgdir}/usr/share/doc/mpnotifier/mpnrc.sample
	
  echo "==========================================================="
  echo "|| An example configuration file has been installed into ||"
  echo "|| /usr/share/doc/mpnotifier/mpnrc.sample                ||"
  echo "|| Copy it to ~/.mpnrc and edit it                       ||"
  echo "|| For help, have a look at /usr/bin/mpn -h              ||"
  echo "==========================================================="
}
