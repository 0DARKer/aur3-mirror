# Maintainer: Julien Schueller <julien.schueller@gmail.com>

pkgname=intel-tbb
pkgname=mingw-w64-intel-tbb
pkgver=4.1_20130613
pkgrel=1
pkgdesc='High level abstract threading library'
depends=('mingw-w64-crt' 'mingw-w64-dlfcn' 'mingw-w64-pthreads')
makedepends=('mingw-w64-dlfcn' 'mingw-w64-pthreads' 'mingw-w64-gcc' 'cmake')
arch=(any)
url='http://www.threadingbuildingblocks.org/'
license=('GPL')
source=("http://threadingbuildingblocks.org/sites/default/files/software_releases/source/tbb${pkgver/\./}oss_src.tgz")
sha1sums=('b1322bd10c5b05a79f61edb236adc0513b4a1532')

_architectures="i686-w64-mingw32 x86_64-w64-mingw32"

build() {
  cd tbb${pkgver/\./}oss
  for _arch in ${_architectures}; do
    unset CXXFLAGS LDFLAGS
    cp build/linux.inc build/${_arch}.inc
    sed -i "s|gcc|${_arch}-gcc|g" build/${_arch}.inc
    sed -i "s|DLL = so|DLL = dll|g" build/${_arch}.inc
#     sed -i "s|LIBEXT = so|LIBEXT = dll|g" build/${_arch}.inc
#     sed -i "s|DLL)\.\$(SONAME_SUFFIX)|DLL)|g" build/${_arch}.inc
    cp build/linux.gcc.inc build/${_arch}.gcc.inc
    sed -i "s|g++|${_arch}-g++|g" build/${_arch}.gcc.inc
    sed -i "s|gcc|${_arch}-gcc|g" build/${_arch}.gcc.inc
    sed -i "s| -lrt||g" build/${_arch}.gcc.inc
    sed -i "s| -ldl| /usr/${_arch}/lib/libdl.dll.a|g" build/${_arch}.gcc.inc
    sed -i "s| -lpthread| /usr/${_arch}/lib/libpthreadGC2.a|g" build/${_arch}.gcc.inc
    sed -i "s|#if _WIN32\|\|_WIN64|#if 0|g" src/tbbmalloc/TypeDefinitions.h
#     sed -i "s| -DUSE_PTHREAD| -DUSE_PTHREAD -mthreads|g" build/${_arch}.gcc.inc
    sed -i "s|LIB_LINK_FLAGS = \$(DYLIB_KEY) -Wl,-soname=\$(BUILDING_LIBRARY)|LIB_LINK_FLAGS = \$(DYLIB_KEY) -o \$(BUILDING_LIBRARY)|g" build/${_arch}.gcc.inc
#     sed -i "s|LINK_FLAGS = -Wl,-rpath-link=. -rdynamic|LINK_FLAGS =|g" build/${_arch}.gcc.inc
    
    make info arch=${_arch} target=${_arch}
    make arch=${_arch} target=${_arch}
  done
}

package() {
  cd tbb${pkgver/\./}oss
  install -d ${pkgdir}/usr/${_arch}/include
  cp -a include/tbb ${pkgdir}/usr/${_arch}/include

  for _arch in ${_architectures}; do
    install -d ${pkgdir}/usr/${_arch}/lib
    install -d ${pkgdir}/usr/${_arch}/bin
    install -m755 build/linux_${_arch}*_release/*.dll ${pkgdir}/usr/${_arch}/bin
    install -m755 build/linux_${_arch}*_release/*.a ${pkgdir}/usr/${_arch}/lib
    ${_arch}-strip -x -g $pkgdir/usr/${_arch}/bin/*.dll
    ${_arch}-strip -g $pkgdir/usr/${_arch}/lib/*.a    
  done
  

}
