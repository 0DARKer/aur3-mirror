pkgname=kio-locate
pkgver=0.5.2
pkgrel=2
arch=('i686' 'x86_64')
pkgdesc="A KDE I/O Slave for the locate command"
url="http://kde-apps.org/content/show.php?content=120965"
license=('GPL')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4' 'docbook-xsl')
source=("http://kde-apps.org/CONTENT/content-files/120965-${pkgname}-${pkgver}.tar.gz")
md5sums=('232a94bb02ca900087936e9b215f2b79')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package(){
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
