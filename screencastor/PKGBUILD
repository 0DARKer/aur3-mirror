# Maintainer: crazyelf5

pkgname=screencastor
pkgver=1.0.1
pkgrel=1
pkgdesc="A powerful screencasting app written in python"
arch=('any')
url="https://launchpad.net/~hizo/+archive/logiciels"
license=('GPL')
depends=('python2' 'pygtk' 'pygtksourceview2' 'vte' 'ffmpeg' 'sed' 'bash' 'imagemagick' 'hicolor-icon-theme')
options=(!emptydirs)
install=$pkgname.install
source=(${url}/+files/${pkgname}_${pkgver}-0ppa1~oneiric.tar.gz
        ffpresets.tar.xz)
md5sums=('2d862560b315c262284b6f8a02ca1daa'
         '84ce652c551db5a8ffe6714d255c1344')

package() {
  cd "$srcdir/$pkgname"
  sed -i 's|/usr/bin/env python|/usr/bin/env python2|' setup.py data/share/screencastor/glade2script.py
  python2 setup.py install --root="$pkgdir/" --optimize=1
  for i in /usr/share/ffmpeg/*.ffpreset; do rm -f "$srcdir"/$(basename $i); done
  install -dm755 "$pkgdir/usr/share/ffmpeg"
  find "$srcdir/" -name *.ffpreset -exec cp -f '{}' "$pkgdir/usr/share/ffmpeg" \;
}

# vim:set ts=2 sw=2 et:
