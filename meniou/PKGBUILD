pkgname=meniou
pkgver=7
pkgrel=1
pkgdesc="a light xdg customizable menu application (alpha version)"
arch=('i686' 'x86_64')
url="http://gna.org/projects/meniou"
license=('GPL3')
depends=('gtk2') # to be improved: can be gtk2 or gtk3
makedepends=('subversion')

_svntrunk=http://svn.gna.org/svn/meniou/trunk/
_svnmod=meniou

build() {
  cd "$srcdir"

  if [ -d "$_svnmod/.svn" ]; then
    (cd "$_svnmod" && svn up)
  else
    svn co "$_svntrunk" --config-dir ./ "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cd "$srcdir/$_svnmod"

  ./autogen.sh
  ./configure --with-gtk2 --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_svnmod"

  make DESTDIR="$pkgdir" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
