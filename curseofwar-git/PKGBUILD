# Maintainer: Alexey < koiwai at lavabit dot com >

pkgname=curseofwar-git
_gitname=curseofwar
pkgver=0.0.0
pkgrel=2
pkgdesc="A fast-paced RTS/Action game with ncurses interface"
arch=("i686" "x86_64")
url="https://github.com/a-nikolaev/curseofwar/wiki"
license=('GPL')
depends=('ncurses')
provides=('curseofwar')
conflicts=('curseofwar')
makedepends=('gcc' 'git')
source=('git://github.com/a-nikolaev/curseofwar.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd "$srcdir/$_gitname"
#	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$_gitname"
	make DESTDIR="$pkgdir/" install
}
