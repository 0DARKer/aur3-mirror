# Maintainer: Zhengyu Xu <xzy3186@gmail.com>

pkgname=insync-dolphin
pkgver=1.0.20
pkgrel=1
pkgdesc="Dolphin integration for insync"
url="https://support.insynchq.com/forums/discussion/2080/new-insync-version-1-0-20-with-linux-cli"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "kdebindings-python2" "kdebase-workspace")
source=("${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}_all.deb")
sha256sums=("1ff79eb51877c030b407e70deae044298e5df451efb5688334b44db8d66a67e2")
noextract=("${pkgname}-${pkgver}-uncommon.deb")
install=$pkgname.install

package() {
   cd $srcdir
   [ -d ${pkgname}-${pkgver}-uncommon ] && rm -r ${pkgname}-${pkgver}-uncommon
   [ -d ${pkgname}-${pkgver}-uncommon ] || mkdir ${pkgname}-${pkgver}-uncommon
   mv ${pkgname}-${pkgver}-uncommon.deb ${pkgname}-${pkgver}-uncommon/
   cd $srcdir/${pkgname}-${pkgver}-uncommon
   ar x ${pkgname}-${pkgver}-uncommon.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
