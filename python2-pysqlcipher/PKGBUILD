# Maintainer: M0Rf30

pkgname=python2-pysqlcipher
pkgver=2.6.3
pkgrel=1
pkgdesc="Python interface to SQLCipher"
arch=(any)
url="http://github.com/leapcode/pysqlcipher/"
license=('ZLIB')
depends=('python2' 'sqlcipher')
amalname=sqlite-amalgamation
amalver=3080600
amalzip=$amalname-$amalver
source=(https://pypi.python.org/packages/source/p/pysqlcipher/pysqlcipher-${pkgver}.tar.gz
	http://www.sqlite.org/2014/$amalzip.zip)


package(){
  cd $srcdir/pysqlcipher-${pkgver}
  cp -r ../$amalzip/* amalgamation   
  python2 setup.py install --root="$pkgdir"
}

md5sums=('a100ebb3d9e75ae673759425ed642e0b'
         '4bb15df435d92b1e3e3d3b8383735919')
