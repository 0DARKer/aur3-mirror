# Maintainer: Andrey Mivrenik <gim at fastmail dot fm>
pkgname=python-twitter
pkgver=1.15.0
pkgrel=4
pkgdesc="An API and command-line toolset for Twitter (twitter.com)"
arch=('any')
url="http://pypi.python.org/pypi/twitter/"
license=('MIT')
depends=('python')
replaces=('python-twitter-tools')
makedepends=('python-setuptools')
conflicts=('python-twitter-tools' 'python-twitter-tools-git' 'python-twitter-git')
source=("http://pypi.python.org/packages/source/t/twitter/twitter-${pkgver}.tar.gz" "LICENSE")
md5sums=('ba530230d1687a2a8bfd720a963f13c0' 'a5da3e25967f8405eb578fa3ab7f4098')

build() {
  msg "Starting build"
  cd "$srcdir/twitter-$pkgver"
  python setup.py build
}

package() {
  msg "Running setup"
  cd "$srcdir/twitter-$pkgver"
  python setup.py install --root=$pkgdir --optimize=1

  msg "Adding license file"
  licensedir="${pkgdir}/usr/share/licenses/${pkgname}/"
  install -d $licensedir
  #install -D -m644 $srcdir/LICENSE $licensedir
  cp -ra $srcdir/LICENSE* $licensedir
}

# vim:set ts=2 sw=2 et:
