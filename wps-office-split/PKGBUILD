pkgname=wps-office-split
pkgver=8.1.0.3703~beta1
pkgrel=1
pkgdesc="Kingsoft wps office 4 linux split edition(Without templates & fonts)"
arch=('i686 x86_64')
url="http://linux.wps.cn/"
license=('business')
provides=('wps-office' 'wpsforlinux')
conflicts=('wps-office' 'wpsforlinux')
replaces=('wps-office' 'wpsforlinux')
depends=('coreutils libpng12')
makedepends=('wget')
package() {
	cd ${pkgdir}
wget http://erhandsome.org/~jqk/php/files/wps-office_8.1.0.3703~b1_x86.tar.xz -O wps.tar.xz
tar -vxapf wps.tar.xz
rm -f wps.tar.xz
}

