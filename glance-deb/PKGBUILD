pkgname="glance-deb"
pkgver=2013.2.2
pkgrel=1
pkgdesc="Openstack image"
arch=("i686" "x86_64")
url="http://docs.openstack.org/developer/glance/"
license=("Apache")
groups=("openstack-deb")

depends=(
  "python2"
  "python2-pbr"
  "python2-webob"
  "python2-eventlet"
  "python2-greenlet"
  "python2-paste-deploy"
  "python2-paste"
  "python2-routes"
  "python2-six"
  "python2-sqlalchemy-0.8"
  "python2-sqlalchemy-0.8-migrate"
  "python2-iso8601"
  "python2-oslo-config"
  "python2-jsonschema"
  "python2-oslo-messaging"
  "python2-anyjson"
  "python2-argparse"
  "python2-boto"
  "python2-httplib2"
  "python2-kombu"
  "python2-crypto"
  "python2-stevedore"
  "python2-keystoneclient-deb"
  "python2-glanceclient-deb"
  "python2-pyopenssl"
  "python2-setuptools"
)

optdepends=(
  "python2-swiftclient"
  "python2-oslo-vmware"
)

conflicts=("glance", "openstack-glance-git")
source=("http://archive.ubuntu.com/ubuntu/pool/main/g/glance/glance_${pkgver}.orig.tar.gz")
md5sums=("5df9916fd7feb72daec249fc0b6778d9")


package() {
  cd "${srcdir}/glance-${pkgver}/"
  mkdir "${pkgdir}/etc/"
  cp -a "etc" "${pkgdir}/etc/glance"
  python2 setup.py install --root="${pkgdir}" --optimize=1
}