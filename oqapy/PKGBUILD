pkgname=oqapy
pkgver=0.4.0
pkgrel=1
pkgdesc="Oqapy is an application intended to sort files of the image type in graphic mode."
arch=('i686' 'x86_64')
    url="http://www.oqapy.eu/"
    license=('LGPL')
    groups=()
    depends=('python2>2.7' 'python2-qt>=4.5' 'pyexiv2' 'gphoto2' 'dcraw')
    makedepends=()
    optdepends=()
    provides=()
    conflicts=()
    replaces=()
    backup=()
    options=()
    install=".install"
    changelog=
    source=(http://www.oqapy.eu/releases/$pkgname-$pkgver.tar.gz)
    noextract=()
    md5sums=('f11fc113dd3c83f5d18a394d778456a6') #generate with 'makepkg -g'

#build() {
#   }

package() {
      cd "$srcdir/$pkgname-$pkgver"
      mkdir -p $pkgdir/usr/share/$pkgname-$pkgver/
      mkdir -p $pkgdir/usr/share/doc/$pkgname/
      mkdir -p $pkgdir/usr/bin/
      cp *.txt $pkgdir/usr/share/doc/$pkgname/
      cp *.py *.lst *.qm *.pro *.ts $pkgdir/usr/share/$pkgname-$pkgver/
      cp -r medias/ $pkgdir/usr/share/$pkgname-$pkgver/
}

