# PKGBUILD
# Author: jdeb
# Modified: 2011-05-30

pkgname='mixtray'
pkgver='cd1ca2f'
pkgrel=1
pkgdesc='Tray icon for Alsa mixer control (Qt)'
arch=('i686' 'x86_64')
url='https://github.com/jdeb/mixtray'
optdepends=()
license=('GPL3')
depends=('qt')
source=("$url/tarball/master/jdeb-$pkgname-$pkgver.tar.gz")
md5sums=('f99d8a84245ea511931064d0cf3687e9')

build() {
    cd "$srcdir/jdeb-$pkgname-$pkgver"
    qmake PREFIX=$pkgdir/usr
    make
}

package() {
    cd "$srcdir/jdeb-$pkgname-$pkgver"
    make install
}
