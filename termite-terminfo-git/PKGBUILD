# Maintainer: Ariel Popper <a@arielp.com>

_gitname=termite

pkgname=termite-terminfo-git
pkgver=6.13.gf397413
pkgver() { cd $_gitname && git describe | sed 's/^v//; s/-/./g'; }
pkgrel=1
pkgdesc="Just the terminfo for termite (A Simple VTE-based terminal)"
arch=('any')
url="https://github.con/thestinger/termite/"
license=('LGPL')
makedepends=('ncurses' 'git')
source=(termite::git+https://github.com/thestinger/termite)
md5sums=('SKIP')


package() {
	cd "$srcdir/$_gitname"
	install -d "$pkgdir/usr/share/terminfo/x"
	tic termite.terminfo -o"$pkgdir/usr/share/terminfo"
}
