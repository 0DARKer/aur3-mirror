pkgname=winff-bin
_pkgname=winff

pkgver=1.4.2
pkgrel=1
_pkgrel=1.42
_pkg_id='1260210'

pkgdesc="WinFF is a GUI for the command line video converter, FFMPEG."
arch=('i686' 'x86_64')
url="http://winff.org/"
license=('GPLv3')
md5sums=('bf26664bd48cd34ce5ffd549f9413466')
depends=('xterm' 'ffmpeg' 'gtk2')
conflicts=('winff' 'winff-svn')
provides=(winff=$pkgver)

case "$CARCH" in
        i686) _arch='i586';;
        x86_64) _arch='x86_64'; _pkg_id='1259252';  md5sums=('b6bb9f0971affb9e43967a40cf941e6c');;
esac

_archive_name=${_pkgname}-${pkgver}-${_pkgrel}.${_arch}.rpm
source=(http://packman.links2linux.org/download/${_pkgname}/${_pkg_id}/${_archive_name})

package() {
  cp -r "$srcdir/usr/" "$pkgdir"
}
