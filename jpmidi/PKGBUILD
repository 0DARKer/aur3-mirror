# Maintainer: David Adler <david dot jo dot adler at gmail dot com>
pkgname=jpmidi
pkgver=0.2
pkgrel=4
pkgdesc="Midi player for Jack-Midi"
arch=(i686 x86_64)
url="http://juliencoder.de/jpmidi/"
license=('GPL')
depends=(jack glib2)
source=(http://juliencoder.de/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('d9ce048a26b879a2eb0c6074c0124be0')

build() {
  mv $srcdir/$pkgname $srcdir/$pkgname-$pkgver
  cd "$srcdir/$pkgname-$pkgver" 
  ./configure --prefix="$pkgdir/usr" 	|| return 1
  make 		|| return 1    
  make install 	|| return 1
}
