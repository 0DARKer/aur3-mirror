pkgname=yget
pkgver=2.2.1
pkgrel=1
pkgdesc="yget, yplay and yurl are programs to download and stream youtube videos and to get their download-URL"
arch=('i686' 'x86_64')
url="http://repo.hu/projects/yget/releases"
license=('public domain')
depends=(wget)
optdepends=('mplayer: for yplay to stream youtube-videos')
source=(http://repo.hu/projects/$pkgname/releases/$pkgname-$pkgver.tar.gz)
md5sums=('fc23d8249a0e48f0f883410e9dfbdeb7')

build() {
	cd $srcdir/$pkgver
	make install install_root="$pkgdir" || return 1
}
