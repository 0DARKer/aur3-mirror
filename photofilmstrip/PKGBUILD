# Contributor: Alexandre Courbot <gnurou@gmail.com>
pkgname=photofilmstrip
pkgver=1.4.0
pkgrel=2
pkgdesc="Creates movies out of pictures using a Ken Burns effect."
arch=('i686' 'x86_64')
url="http://www.photofilmstrip.org"
license=('GPL')
depends=('wxpython' 'pil')
source=(http://downloads.sourceforge.net/project/photostoryx/photofilmstrip/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('9df47b2daa27629300a19e6e65613293')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's/python/python2/g' Makefile
  make compile
  DESTDIR="$pkgdir" make install
  sed -i 's/python/python2/g' $pkgdir/usr/bin/*
  mkdir -p $pkgdir/usr/share/doc
  cp -R $srcdir/$pkgname-$pkgver/doc/$pkgname $pkgdir/usr/share/doc/$pkgname
  chmod 755 $pkgdir/usr/bin/*
  find $pkgdir/usr/share -type d -exec chmod 755 {} \;
  find $pkgdir/usr/share -type f -exec chmod 644 {} \;
} 
