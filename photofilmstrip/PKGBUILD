pkgname=photofilmstrip
pkgver=2.0.0
pkgrel=1
pkgdesc="Creates movies out of pictures using a Ken Burns effect"
arch=(any)
url=http://www.photofilmstrip.org/
license=(GPL)
depends=(python2-imaging wxpython mencoder)
install="photofilmstrip.install"
source=("http://downloads.sourceforge.net/project/photostoryx/photofilmstrip/2.0.0-RC1/photofilmstrip-${pkgver}.tar.gz")
md5sums=('0d5025264cdbfdfcfd81071913b02f8c')

package()
{
  cd $srcdir/photofilmstrip-${pkgver}
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}