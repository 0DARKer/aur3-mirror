# Contributor: Federico Quagliata (quaqo) <linux@quaqo.org>

pkgname=secure-delete
pkgver=3.1
pkgfile=${pkgname//-/_}-$pkgver
pkgrel=2
pkgdesc="Secure file, disk, swap, memory erasure utilities"
url="http://www.thc.org/"
depends=('glibc')
license=('GPL')
arch=('i686')
source=(http://freeworld.thc.org/releases/$pkgfile.tar.gz)
md5sums=('aabbd7e77bf96b326d260f16fb7f8bba')

build() {
  cd $startdir/src/$pkgfile
  chmod u+w .
  sed -ie 's/mktemp/mkstemp/g' sfill.c
  sed -ie "s/sswap smem sdel-mod.o/sswap smem/" Makefile
  make || make || return 1
  make INSTALL_DIR=$startdir/pkg/usr/bin \
    MAN_DIR=$startdir/pkg/usr/man \
    DOC_DIR=$startdir/pkg/usr/share/doc/secure_delete \
    install
  chmod a+r $startdir/pkg/usr/bin/*
  rm -r $startdir/pkg/usr/share/
}