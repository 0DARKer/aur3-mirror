
pkgname=drbl
pkgver=1.10.31
pkgrel=2
pkgdesc="DRBL (Diskless Remote Boot in Linux) is a free software, open source solution to managing the deployment of the GNU/Linux operating system across many clients."
arch=('i686' 'x86_64')
url="http://drbl.sourceforge.net/"
license=('GPL')
depends=('bash' 'bc')
source=(http://free.nchc.org.tw/drbl-core/src/stable/$pkgname-$pkgver.tar.bz2)

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install  
  cd $pkgdir/opt/drbl/lang
  make all  
  cd $pkgdir/opt/drbl/sbin
  make all
}

md5sums=('8e5dce6822336b7d1a6672849de84827')
