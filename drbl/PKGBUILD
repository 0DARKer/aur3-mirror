
pkgname=drbl
_drblrel=21
pkgver=1.9.9
pkgrel=1
pkgdesc="DRBL (Diskless Remote Boot in Linux) is a free software, open source solution to managing the deployment of the GNU/Linux operating system across many clients."
arch=('i686' 'x86_64')
url="http://drbl.sourceforge.net/"
license=('GPL')
depends=('bash')
source=(http://free.nchc.org.tw/drbl-core/src/stable/$pkgname-$pkgver-$_drblrel.tar.bz2)

package() {
  cd $srcdir/$pkgname-$pkgver-$_drblrel
  make DESTDIR=$pkgdir install  
  cd $pkgdir/opt/drbl/lang
  make all  
  cd $pkgdir/opt/drbl/sbin
  make all
}

md5sums=('97b6393f87581a4e64a34690fdf8f40f')
