# $Id: PKGBUILD 118460 2011-04-07 07:07:47Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Russian bepo: Vincent Bernardoff <vbmithr@gmail.com>
pkgname=xkeyboard-config-rub
pkgbasename=xkeyboard-config
pkgver=2.3
pkgrel=1
pkgdesc="X keyboard configuration files with russian bepo layout patch"
arch=(any)
license=('custom')
url="http://www.freedesktop.org/wiki/Software/XKeyboardConfig"
depends=('xorg-xkbcomp')
makedepends=('intltool')
provides=('xkeyboard-config' 'xkbdata')
replaces=('xkeyboard-config' 'xkbdata')
conflicts=('xkeyboard-config' 'xkbdata')
source=(http://xorg.freedesktop.org/releases/individual/data/${pkgbasename}/${pkgbasename}-${pkgver}.tar.bz2 russian_bepo.patch)
sha1sums=('a49c4cce9cfb7003aa04a32114f369c6bd7a9077' '0e5bd934ddff3967889401385a25c8c4510c9d40')

build() {
  cd "${srcdir}/${pkgbasename}-${pkgver}"
  patch -p1 < ${srcdir}/russian_bepo.patch
  ./configure --prefix=/usr \
      --with-xkb-base=/usr/share/X11/xkb \
      --with-xkb-rules-symlink=xorg \
      --enable-compat-rules=yes
  make
  make DESTDIR="${pkgdir}" install
  rm -f "${pkgdir}/usr/share/X11/xkb/compiled"
  install -m755 -d "${pkgdir}/var/lib/xkb"
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgbasename}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgbasename}/"
}
