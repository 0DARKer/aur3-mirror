# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=ruby-ruby-progressbar
_gemname=${pkgname#ruby-}
pkgver=1.3.2
pkgrel=1
pkgdesc="A text progress bar library for Ruby."
arch=('any')
url="http://github.com/peleteiro/progressbar/"
license=('RUBY')
depends=('ruby' 'rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)

package() {
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies \
    -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${_gemname}-${pkgver}.gem
}
sha512sums=('ed8d435be8d3ca4785e4308e7f84736bffaf3dc7ec69ec81e20987a8c4c843f75f284116e1966277e822cf9413c87039153ba924fc67583d6b1ef11f40b6289c')
