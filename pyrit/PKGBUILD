pkgname=pyrit
pkgver=0.3.0
pkgrel=3
pkgdesc="Stay one step ahead in the attacks WPA-PSK and WPA2-PSK."
url="http://code.google.com/p/pyrit/"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('python' 'openssl' 'zlib')
makedepends=('gcc' 'python')
source=(http://pyrit.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('870bc3b5371a0591b07629903d1a5e7e')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python setup.py build
  python setup.py install --root=${pkgdir}
}
