_pkgsourcename=libjpeg
pkgname=lib32-${_pkgsourcename}7
pkgver=7
pkgrel=1
_pkgrel32=1
pkgdesc="An older version of a library of JPEG support functions."
url="ftp://ftp.uu.net/graphics/jpeg/"
license=('custom')
arch=(x86_64)
groups=('lib32')
depends=('lib32-glibc')
source=("http://arm.konnichi.com/extra/os/i686/$_pkgsourcename-$pkgver-$_pkgrel32-i686.pkg.tar.gz")
md5sums=('9eef50c53c7a94c71216a63ead783eb4')

build() {
  cd $srcdir || return 1
  install -d $pkgdir/opt/lib32/usr/lib || return 1
  cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib || return 1
  rm -f $pkgdir/opt/lib32/usr/lib/libjpeg.so || return 1

  install -Dm644 usr/share/licenses/libjpeg/README \
    $pkgdir/opt/lib32/usr/share/licenses/${_pkgsourcename}7/LICENSE || return 1
}
