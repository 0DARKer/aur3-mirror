# $Id: PKGBUILD 77722 2010-04-17 14:38:39Z ibiru $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gtk-engine-mist
pkgver=2.20.1
pkgrel=1
pkgdesc="Mist theme engine for GTK+ 2"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gtk2>=2.20.0')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
url="http://live.gnome.org/GnomeArt"
source=(http://ftp.gnome.org/pub/gnome/sources/gtk-engines/2.20/gtk-engines-${pkgver}.tar.bz2)
sha256sums=('c502ee4778e1a8e232f430fb575146a0880266471d19dbd78ee51eaa769da614')

build() {
  cd "${srcdir}/gtk-engines-${pkgver}"
  ./configure --prefix=/usr --disable-all --enable-mist || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
