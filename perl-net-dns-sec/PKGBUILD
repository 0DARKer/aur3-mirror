options=('!emptydirs')
depends=('perl-crypt-openssl-bignum>=0.03' 'perl-crypt-openssl-dsa>=0.1' 'perl-crypt-openssl-rsa>=0.19' 'perl-digest-bubblebabble>=0.01' 'perl-digest-sha1' 'perl-mime-base32' 'perl-net-dns>=0.64')
makedepends=()
url='http://search.cpan.org/dist/Net-DNS-SEC'
source=('http://search.cpan.org/CPAN/authors/id/O/OL/OLAF/Net-DNS-SEC-0.16.tar.gz')
