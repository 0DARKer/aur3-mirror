# Contributor: tze <tze@datalove.me>

pkgname=jcryptool
pkgver=1.0.0_RC4
pkgrel=1
pkgdesc='JCrypTool is an e-learning application. You can use it to apply and analyse cryptographic algorithms.'
arch=('i686' 'x86_64')
license=('EPL')
url="http://jcryptool.sourceforge.net"
install=jcryptool.install
_arch='x86'
[ "$CARCH" = 'x86_64' ] && _arch='x86_64'
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver/_/-}.linux.gtk.${_arch}.zip
        jcryptool.desktop
        jcryptool.png)
md5sums=('5fbd22ee77cb7ed37a276fd8fff9c1a0'
         '378c729125e5bba1f830323535aa8215'
         'bc2e06bea691b851a70da0055aa2e933')
[ "$CARCH" = 'x86_64' ] && md5sums[0]='ccada355f401ee1dec2ad6cd1e409a7b'

build() {
	install -dm644 ${pkgdir}/opt/${pkgname}
	cp -ar ${pkgname} ${pkgdir}/opt

	install -Dm644 ${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
	install -Dm644 ${pkgname}.png ${pkgdir}/usr/share/pixmaps/${pkgname}.png
}
