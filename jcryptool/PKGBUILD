# Contributor: sancspi <sancospi [at] gmail.com>

pkgname=jcryptool
pkgver=1.0.0_RC3
pkgrel=1
pkgdesc='JCrypTool is a free e-learning application. You can use it to apply and analyze cryptographic algorithms.'
arch=('x86_64')
license=('EPL')
url="https://www.cryptool.org/"
install=jcryptool.install
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-1.0.0-RC3.linux.gtk.x86_64.zip jcryptool.desktop jcryptool.png)
md5sums=('1D00868694DF12BF9A0A65B67142984A' '378c729125e5bba1f830323535aa8215' 'bc2e06bea691b851a70da0055aa2e933')

build() {
	install -dm644 ${pkgdir}/opt/$pkgname
	cp -ar $pkgname $pkgdir/opt

	install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop

	install -Dm644 $pkgname.png $pkgdir/usr/share/pixmaps/$pkgname.png
}
