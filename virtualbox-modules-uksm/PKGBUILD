pkgname=virtualbox-modules-uksm
pkgver=4.3.12
pkgrel=1
pkgdesc='Host and guest linux-uksm kernel modules for VirtualBox'
arch=('i686' 'x86_64')
url='http://virtualbox.org'
license=('GPL')
makedepends=('linux-uksm-headers>=3.14' 'linux-uksm-headers<3.15' "virtualbox-host-dkms>=$pkgver" "virtualbox-guest-dkms>=$pkgver" 'dkms')

_extramodules=extramodules-3.14-uksm
_kernver="$(cat /usr/lib/modules/${_extramodules}/version)"

build() {
	# dkms need modification to be run as user
	cp -r /var/lib/dkms .
	echo "dkms_tree='$srcdir/dkms'" > dkms.conf
	# build host modules
	msg2 'Host modules'
	dkms --dkmsframework dkms.conf build "vboxhost/$pkgver" -k "$_kernver"
	# build guest modules
	msg2 'Guest modules'
	dkms --dkmsframework dkms.conf build "vboxguest/$pkgver" -k "$_kernver"
}

package_virtualbox-uksm-host-modules() {
	_Hpkgdesc='Host kernel modules for VirtualBox running under Linux-uksm.'
	pkgdesc="${_Hpkgdesc}"
	provides=("virtualbox-host-modules")
	depends=('linux-uksm>=3.14' 'linux-uksm<3.15')
    install=host.install

	install -dm755 "$pkgdir/usr/lib/modules/$_extramodules"
	cd "dkms/vboxhost/$pkgver/$_kernver/$CARCH/module"
	install -m644 * "$pkgdir/usr/lib/modules/$_extramodules"
	find "$pkgdir" -name '*.ko' -exec gzip -9 {} +
	sed -i -e "s/EXTRAMODULES='.*'/EXTRAMODULES='$_extramodules'/" "$startdir/host.install"
}

package_virtualbox-uksm-guest-modules() {
	_Gpkgdesc='Guest kernel modules for VirtualBox running under Linux-uksm.'
	pkgdesc="${_Gpkgdesc}"
	license=('GPL')
	provides=("virtualbox-guest-modules")
	depends=('linux-uksm>=3.14' 'linux-uksm<3.15')
	install=guest.install

	install -dm755 "$pkgdir/usr/lib/modules/$_extramodules"
	cd "dkms/vboxguest/$pkgver/$_kernver/$CARCH/module"
	install -m644 * "$pkgdir/usr/lib/modules/$_extramodules"
	find "$pkgdir" -name '*.ko' -exec gzip -9 {} +
	sed -i -e "s/EXTRAMODULES='.*'/EXTRAMODULES='$_extramodules'/" "$startdir/guest.install"
}
pkgdesc='Kernel modules for VirtualBox running under Linux-uksm. No need for dkms with this package!'
