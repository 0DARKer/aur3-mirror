# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=qxw
pkgver=20130906
pkgrel=1
pkgdesc="A program to help you create and publish crosswords"
arch=('i686' 'x86_64')
url="http://www.quinapalus.com/qxw.html"
license=('GPL')
depends=('gtk2')
source=("http://www.quinapalus.com/$pkgname-$pkgver.tar.gz" "makefile.diff")
md5sums=('7e204d36029dbeb6a5132280ff0380d2'
         'f96be2531e7d77027cdbb9e9642e7cc7')

prepare() {
	cd "$srcdir/$pkgname-$pkgver"
 patch -Np1 -i "$srcdir/makefile.diff"
}

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
