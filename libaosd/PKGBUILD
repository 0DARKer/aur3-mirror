# Maintainer: Malte Rabenseifner
# Contributor: Mildred <silkensedai@online.fr>

pkgname=libaosd
pkgver=0.2.5
pkgrel=3
pkgdesc="Atheme On Screen Display library"
arch=('i686' 'x86_64')
url="http://www.atheme.org/"
license=('custom')
depends=('libxcomposite' 'pango')
source=("http://distfiles.atheme.org/$pkgname-$pkgver.tgz")
md5sums=('957eae459ebe7f7c76612b489f32d2e5')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
