# Maintainer: Marcel Schneider <marcel@coopmasters.de>
pkgname=csv2xls
pkgver=0.3
pkgrel=1
pkgdesc="a command line utility which converts csv files into one (or more if splitted) Excel(TM) files."
arch=('i686')
url="https://github.com/ferkulat/csv2xls"
license=('GPL')
groups=()
depends=('libcsv' 'xlslib')
makedepends=('automake' 'autoconf')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=

source=(https://github.com/ferkulat/$pkgname/archive/$pkgver.tar.gz)
noextract=()
md5sums=('c8fa9c6795e621912edb2376813052c1')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./bootstrap.sh || return 1 
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
