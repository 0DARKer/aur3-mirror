pkgname=lib32-apulse-git
pkgver=20140920
pkgrel=1
pkgdesc="PulseAudio emulation for ALSA."
arch=('x86_64')
url="https://github.com/i-rinat/apulse"
license=('MIT')
groups=()
depends=('lib32-glib2' 'lib32-alsa-lib')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=git://github.com/i-rinat/apulse.git
_gitname=apulse

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  export CFLAGS=-m32
  export CXXFLAGS=-m32
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make
  
  sed -i 's:usr/lib/apulse:usr/lib32/apulse:' "$srcdir/$_gitname-build/apulse"

}

package() {
  cd "$srcdir/$_gitname-build"
   mkdir -p "$pkgdir/usr/bin/"
   mkdir -p "$pkgdir/usr/lib32/apulse"

  install libpulse*.so.0 "$pkgdir/usr/lib32/apulse"
  install libpulsecommon-5.0.so "$pkgdir/usr/lib32/apulse"
  ln -sf "libpulse-simple.so.0" "$pkgdir/usr/lib32/apulse/libpulse-simple.so"
  ln -sf "libpulse.so.0" "$pkgdir/usr/lib32/apulse/libpulse.so"
  install -Dm755 apulse "$pkgdir/usr/bin"
}

