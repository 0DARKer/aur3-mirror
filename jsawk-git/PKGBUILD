# Contributor: Andreas B. Wagner <AndreasBWagner@gmail.com>
pkgname=jsawk-git
pkgver=20100827
pkgrel=2
pkgdesc="like awk, but for JSON"
arch=('i686' 'x86_64')
url="http://github.com/micha/jsawk"
license=('unknown')
depends=('spidermonkey')
makedepends=('git')
provides=('jsawk')
conflicts=('jsawk')

_gitroot="git://github.com/micha/jsawk.git"
_gitname="jsawk"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
}
package() {
  cd "$srcdir/$_gitname-build"
  install -Dm755 jsawk ${pkgdir}/usr/bin/jsawk
} 
