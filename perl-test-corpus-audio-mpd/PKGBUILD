pkgname='perl-test-corpus-audio-mpd'
pkgver='1.100500'
pkgrel='1'
pkgdesc="automate launching of fake mdp for testing purposes"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-file-sharedir>=1.00' 'perl-path-class' 'perl-readonly')
url='http://search.cpan.org/dist/Test-Corpus-Audio-MPD'
source=('http://search.cpan.org/CPAN/authors/id/J/JQ/JQUELIN/Test-Corpus-Audio-MPD-1.100500.tar.gz')
md5sums=('cae24532473d208ca7d07f7b478e4258')

build() {
  DIST_DIR="${srcdir}/Test-Corpus-Audio-MPD-1.100500"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Build.PL --installdirs=vendor --destdir="$pkgdir" &&
    perl Build &&
    perl Build test &&
    perl Build install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
