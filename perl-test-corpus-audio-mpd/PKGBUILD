pkgdesc="automate launching of fake mdp for testing purposes"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.008' 'perl-file-sharedir>=1.00' 'perl-file-sharedir-pathclass' 'perl-path-class' 'perl-readonly')
makedepends=()
url='http://search.cpan.org/dist/Test-Corpus-Audio-MPD'
source=('http://search.cpan.org/CPAN/authors/id/J/JQ/JQUELIN/Test-Corpus-Audio-MPD-1.113282.tar.gz')
md5sums=('2a770d8834c1598f3772058875eab36c')
