post_install() {
/bin/cat << ENDOFMESSAGE
==>
==>
==>  To install mod_gnutls, add the following lines in 
==>  /etc/httpd/conf/httpd.conf file :
==>
==>  LoadFile   /usr/lib/libgnutls.so
==>  LoadModule gnutls_module modules/mod_gnutls.so
==>
==>  and restart/reload Apache.
==>
==>
ENDOFMESSAGE
}

post_upgrade() {
post_install
}

op=$1
shift
$op $*

