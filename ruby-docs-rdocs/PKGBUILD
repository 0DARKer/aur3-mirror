pkgname=ruby-docs-rdocs
pkgver=2.0
pkgrel=1
pkgdesc="Documentation for the Ruby programming language"
arch=('any')
url="http://www.ruby-doc.org/"
license=('BSD' 'custom')
options=('docs' '!strip')
source=('http://www.ruby-doc.org/downloads/ruby_2_0_core_rdocs.tgz' 'http://www.ruby-doc.org/downloads/ruby_2_0_stdlib_rdocs.tgz')
md5sums=('e6825f3d0e3c0f733eb60be96b625e70'
         'b568887fcaa812f3eb88c84cfd5a4055')

build(){
  cd "$srcdir"
  mkdir -p "$pkgdir/usr/share/doc/ruby"
  cp -rf ruby_2_0_core "$pkgdir/usr/share/doc/ruby"
  cp -rf ruby_2_0_stdlib "$pkgdir/usr/share/doc/ruby"
}
