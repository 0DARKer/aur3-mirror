pkgname=ruby-docs-rdocs
pkgver=1.9.3
pkgrel=1
pkgdesc="Documentation for the Ruby programming language"
arch=('any')
url="http://www.ruby-doc.org/"
license=('BSD' 'custom')
options=('docs' '!strip')
source=('http://www.ruby-doc.org/downloads/ruby_1_9_3_core_rdocs.tgz' 'http://www.ruby-doc.org/downloads/ruby_1_9_3_stdlib_rdocs.tgz')
md5sums=('449770f5552d8524c25f32626ddfc939' '603ad5a31700db83c90ed70a43e52061')

build(){
  cd "$srcdir"
  mkdir -p "$pkgdir/usr/share/doc/ruby"
  cp -rf ruby_1_9_3_core "$pkgdir/usr/share/doc/ruby"
  cp -rf ruby_1_9_3_stdlib "$pkgdir/usr/share/doc/ruby"
}
