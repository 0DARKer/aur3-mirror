# Maintainer: agaric <binzter  at  g mail>

pkgname=ttf-agave
pkgver=1
pkgrel=1
pkgdesc='A monospaced truetype font for the terminal'
arch=('any')
url=('https://bitbucket.org/agaric/agave')
license=('custom')  # public domain
depends=('fontconfig' 'xorg-font-utils')
install="${pkgname}.install"
source=('https://bitbucket.org/agaric/agave/downloads/agave001.tar.gz')
sha256sums=('f5d7eb016bd1eb5488ff91865ac046c7eb745fdd1e1fa1bd2805da6d1ade410f')

package() {
  cd "${srcdir}"
  install -d "${pkgdir}/usr/share/fonts/TTF"
  install -m644 agave-[rbiz].ttf "${pkgdir}/usr/share/fonts/TTF"
  install -Dm644 license.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
