# Maintainer: agaric <binzter__at__g mail>

pkgname=ttf-agave
pkgver=3
pkgrel=5
pkgdesc='A monospaced truetype font for coding and the commandline'
arch=('any')
url=('https://bitbucket.org/agaric/agave')
license=('custom:public domain')
depends=('fontconfig' 'xorg-font-utils')
install="${pkgname}.install"
source=(
  'https://bitbucket.org/agaric/agave/downloads/agave-003a.tar.gz'
  'license.txt'
)
sha256sums=(
  'a4e6be32afc181bd616682867846aaa1fe93917617354d8f57cc0c4671a2b1ac'
  '1b9eedb3c5f0a1b38e0ed9421bee5bb240758ff3de3d1b377c7eca0283fc154d'
)

package() {
  cd "${srcdir}"
  install -d "${pkgdir}/usr/share/fonts/TTF"
  install -m644 agave-[rbiz].ttf "${pkgdir}/usr/share/fonts/TTF"
  install -Dm644 license.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
