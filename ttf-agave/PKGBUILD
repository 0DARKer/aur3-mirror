# Maintainer: agaric <binzter_at_gmail_dot_com>

pkgname=ttf-agave
pkgver=7
pkgrel=1
pkgdesc='A monospaced truetype font for coding and the commandline'
arch=('any')
url=('https://bitbucket.org/agaric/agave')
license=('MIT')
depends=('fontconfig' 'xorg-font-utils')
install="${pkgname}.install"
source=(
  'https://bitbucket.org/agaric/agave/downloads/agave-007.tar.gz'
  'license.txt'
)
sha256sums=(
  'a650c2482008651cfa75dd836c4245b0e5bedc4e5bdbfa5d608b225f83c964ff'
  'bac7b465f9d91361afb78601d924b34aee7d81e0a9a633d89c0afc969ab243cf'
)

package() {
  cd "${srcdir}"
  install -d "${pkgdir}/usr/share/fonts/TTF"
  install -m644 agave-[rbiz].ttf "${pkgdir}/usr/share/fonts/TTF"
  install -Dm644 license.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
