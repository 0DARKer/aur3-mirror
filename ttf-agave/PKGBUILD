# Contributor: Jonas Haag <jonas@lophus.org>
pkgname='ttf-agave'
pkgver=1
pkgrel=1
pkgdesc="Agave monospace font"
arch=('any')
url="http://an.erki.net/~b/typo/agave"
license=('public domain')
depends=('fontconfig')
source=('https://bitbucket.org/agaric/agave/downloads/agave.tar.gz')
sha512sums=('0eb23e06ec8bf178b19b1f5418d1f6635946bad72b37ff11b5985e696eaeffc4682471c357777f9883354cc7c98a5745b8b8bcc8956866c5d9904903e6443334')
install=${pkgname}.install

build()
{
  cd "${srcdir}"
  tar xzf agave.tar.gz
  mkdir -p "${pkgdir}/usr/share/fonts/TTF"
  cp agave-r.ttf "${pkgdir}/usr/share/fonts/TTF"
}
