# Contributor: Michal Hybner <dta081@gmail.com>
pkgname=xtrlock
pkgver=2.0
pkgrel=2
pkgdesc="Minimal X display lock program"
arch=(i686 x86_64)
url="http://packages.debian.org/xtrlock"
license=('GPL')
depends=('libx11')
source=(http://ftp.debian.org/debian/pool/main/x/xtrlock/xtrlock_${pkgver}-12.tar.gz)
md5sums=('be75a389f84fa9548ee04f367480f23e')

build() {
cd ${startdir}/src/xtrlock-${pkgver}/
make -f Makefile.noimake CFLAGS="-DSHADOW_PWD" LDLIBS="-lX11 -lcrypt" xtrlock || return 1
install -D --mode=4755 --verbose xtrlock ${startdir}/pkg/usr/bin/xtrlock
install -D --mode=644 --verbose xtrlock.man ${startdir}/pkg/usr/man/man1/xtrlock.1x
}
