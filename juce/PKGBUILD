pkgname=juce
pkgver=1.51
pkgrel=1
pkgdesc="JUCE (Jules' Utility Class Extensions) is an all-encompassing C++ class library for developing cross-platform applications."
arch=('i686' 'x86_64')
url="http://www.rawmaterialsoftware.com/juce/"
license=('GPL')
depends=('libx11' 'libxinerama' 'libgl' 'freetype2' 'pth' 'alsa-lib')
makedepends=('unzip' 'premake')
source=("http://switch.dl.sourceforge.net/sourceforge/juce/juce_1_51.zip")
md5sums=('5bb258f9c6ea3edd9860e2c050e42e57')

build() {

  cd $srcdir/$pkgname/build/linux || return 1

  ./runpremake || return 1
  make CONFIG=Release || return 1

  mkdir -p $pkgdir/usr/{include/juce,lib} || return 1

  install -Dm 644 $srcdir/$pkgname/bin/libjuce.a $pkgdir/usr/lib || return 1
  install -Dm 644 $srcdir/$pkgname/*.h $pkgdir/usr/include/juce || return 1

}

