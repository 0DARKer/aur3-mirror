# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>

pkgname=(fortune-mod-peepshow)
pkgver=(0.2)
pkgrel=(2)
pkgdesc=(Peep Show BBC Sitcom fortune cookies)
url=("http://dl.dropbox.com/u/14015956/fortune-mod/fortune-mod-peepshow")
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname-$pkgver.tar.xz)

md5sums=('529dc10a14bfc803973c0aa2c7da8534')
build() {
  mkdir $srcdir/$pkgname-$pkgver/
  xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
  mv -i $srcdir/peepshow $srcdir/$pkgname-$pkgver/
  strfile $srcdir/$pkgname-$pkgver/peepshow
  install -d $pkgdir/usr/share/fortune || return 1
  install -m 644 $srcdir/$pkgname-$pkgver/peepshow* $pkgdir/usr/share/fortune \
    || return 1
}

