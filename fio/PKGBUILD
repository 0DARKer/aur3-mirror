# Maintainer: John Williams <jwilliams4200 liamg reverse&remove moc>
pkgname=fio
pkgver=2.0.14
pkgrel=1
pkgstr=${pkgver}
pkgdesc="scriptable I/O tool for storage benchmarks and drive testing"
arch=('x86_64' 'i686')
url="http://freshmeat.net/projects/fio"
license=('GPL2')
depends=('libaio' 'bash')
source=("http://brick.kernel.dk/snaps/fio-${pkgstr}.tar.bz2")

build() {
    cd $srcdir/fio-${pkgstr}
    make
}

package() {
    cd $srcdir/fio-${pkgstr}
    make DESTDIR="${pkgdir}" prefix="/usr" mandir="/usr/share/man" install
}
sha256sums=('4bf01f1d2baf6d4fa905e5489e446e85e01979c427b2c38e2915e039248044e5')
