# Maintainer: John Williams <jwilliams4200 liamg reverse&remove moc>
pkgname=fio
pkgstr=2.0.12.1
pkgver=2.0.12
pkgrel=1
pkgdesc="scriptable I/O tool for storage benchmarking and drive testing"
arch=('x86_64' 'i686')
url="http://freshmeat.net/projects/fio"
license=('GPL2')
depends=('libaio' 'bash')
source=("http://brick.kernel.dk/snaps/fio-${pkgstr}.tar.bz2")

build() {
    cd $srcdir/fio-${pkgstr}
    make
}

package() {
    cd $srcdir/fio-${pkgstr}
    make DESTDIR="${pkgdir}" prefix="/usr" mandir="/usr/share/man" install
}
sha256sums=('2972ddc13902ee1dc5964aa4e4f62f9066ecaf85e41c6d9b5f891974c2f8057c')
