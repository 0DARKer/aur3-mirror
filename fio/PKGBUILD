# Contributor: Mariusz Libera <mariusz.libera@gmail.com>
# Contributor: John Williams <jwilliams4200 liamg reverse&remove moc>
pkgname=fio
pkgstr=2.1.4
pkgver=2.1
pkgrel=4
pkgdesc="Scriptable I/O tool for storage benchmarks and drive testing"
arch=('i686' 'x86_64')
url="http://freshmeat.net/projects/fio"
license=('GPL2')
depends=('bash' 'libaio')
optdepends=('gfio: GTK2 frontend'
	    'gnuplot: generating plots using fio_generate_plots'
	    'numactl: NUMA support (must also be present at build time)')
source=("http://brick.kernel.dk/snaps/fio-${pkgstr}.tar.bz2")
sha256sums=('62e075862340513fcdb1f75ccee3765a47d1f380f7a6bdb2175f24acf4b77467')

build() {
	cd $srcdir/fio-${pkgstr}
	./configure
	make
}

package() {
	cd $srcdir/fio-${pkgstr}
	make DESTDIR="${pkgdir}" prefix="/usr" mandir="/usr/share/man" install

	# documentation
	install -dm755 "${pkgdir}/usr/share/doc/${pkgname}"
	install -m644 \
		HOWTO \
		LICENSE \
		README \
		REPORTING-BUGS \
		SERVER-TODO \
		"${pkgdir}/usr/share/doc/${pkgname}"

	# examples
	install -dm755 "${pkgdir}/usr/share/doc/${pkgname}/examples"
	install -m644 examples/* "${pkgdir}/usr/share/doc/${pkgname}/examples"
}
