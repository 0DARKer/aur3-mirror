# Contributor: markiza@gmail.com

pkgname=fio
pkgver=1.50
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="fio is an I/O tool meant to be used both for benchmark and stress/hardware verification. It has support for 13 different types of I/O engines"
license=('GPL')
depends=('libaio')
makedepends=('pkgconfig')
options=('') 
url="http://freshmeat.net/projects/fio/"
source=("http://freshmeat.net/urls/3aa21b8c106cab742bf1f20d60629e3f")
md5sums=('9129617d3dd4b369a1dc092f54491682')
DOK="COPYING README HOWTO"

build() {
  mkdir -p $startdir/pkg/usr/share/$pkgname
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  make DESTDIR=$startdir/pkg/usr install
  cp -R $startdir/pkg/usr/usr/local/* $startdir/pkg/usr/
  rm -fr  $startdir/pkg/usr/usr/
  for I in $DOK; do
    cp -r $startdir/src/$pkgname-$pkgver/$I $startdir/pkg/usr/share/$pkgname
  done
  cp -r $startdir/src/$pkgname-$pkgver/examples $startdir/pkg/usr/share/$pkgname
}
