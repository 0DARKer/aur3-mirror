# Maintainer: John Williams <jwilliams4200 liamg reverse&remove moc>
pkgname=fio
pkgver=2.0.1
pkgrel=1
pkgdesc="I/O tool meant to be used both for benchmark and stress/hardware verification"
arch=('x86_64' 'i686')
url="http://freshmeat.net/projects/fio"
license=('GPL2')
depends=('libaio' 'bash')
source=("http://brick.kernel.dk/snaps/fio-${pkgver}.tar.bz2")

build() {
    cd $srcdir/fio-${pkgver}
    make
}

package() {
    cd $srcdir/fio-${pkgver}
    make DESTDIR="${pkgdir}" prefix="/usr" mandir="/usr/share/man" install
}
sha256sums=('bddb8dfff9c79a6abf1b520f33cc953d880a0d1c19932418fe67c6027d140aa1')
