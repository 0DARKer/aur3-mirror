# Maintainer: John Williams <jwilliams4200 liamg reverse&remove moc>
pkgname=fio
pkgver=2.0.11
pkgrel=1
pkgdesc="scriptable I/O tool for storage benchmarking and drive testing"
arch=('x86_64' 'i686')
url="http://freshmeat.net/projects/fio"
license=('GPL2')
depends=('libaio' 'bash')
source=("http://brick.kernel.dk/snaps/fio-${pkgver}.tar.bz2")

build() {
    cd $srcdir/fio-${pkgver}
    make
}

package() {
    cd $srcdir/fio-${pkgver}
    make DESTDIR="${pkgdir}" prefix="/usr" mandir="/usr/share/man" install
}
sha256sums=('e1421352672573dd00d7d834be15b3f58ea330bfa5666345a931ed447f96be1e')
