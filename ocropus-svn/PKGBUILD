# Contributor: Ewoud Nuyts <ewoud.nuyts@gmail.com>

pkgname=ocropus-svn
pkgver=938
pkgrel=1
pkgdesc="An open source document analysis and OCR system"
url="http://code.google.com/p/ocropus/"
makedepends=('subversion')
depends=('tesseract-svn' 'ftjam' 'libpng' 'libjpeg' 'zlib' 'aspell-en')
conflicts=('ocropus')
provides=('ocropus')
arch=('i686' 'x86_64')
license=('Apache')
source=()
md5sums=()

_svntrunk=http://ocropus.googlecode.com/svn/trunk/
_svnmod=ocropus

build() {
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./configure --with-tesseract=/usr --prefix=$startdir/pkg/usr
  jam || return 1
  mkdir -p $startdir/pkg/usr/bin
  cp $startdir/src/$_svnmod-build/ocropus-cmd/ocropus $startdir/pkg/usr/bin
}
