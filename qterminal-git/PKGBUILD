# Maintainer: vicky91 <vickypaiers@gmail.com>
pkgname=qterminal-git
pkgver=20130410_b6a9de2
pkgrel=1
pkgdesc="Light QT-based  terminal emulator"
arch=('i686' 'x86_64')
url="https://github.com/qterminal/qterminal"
license=('GPL2')
depends=('qtermwidget-git')
makedepends=('git')
source=("git://github.com/qterminal/qterminal.git")
md5sums=('SKIP')

_gitname=qterminal

pkgver() {
    cd "$srcdir/$_gitname"

    echo "$(LANG=C date '+%Y%m%d')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd "$srcdir/$_gitname"

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DQT_QMAKE_EXECUTABLE=qmake-qt4 .
  make

}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
