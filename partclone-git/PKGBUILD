
# Pimper : M0Rf30

pkgname=partclone-git
pkgver=20130404
pkgrel=1
pkgdesc="Partclone provides utilities to back up and restore used-blocks of a partition. The following file systems are supported: ext2, ext3, ext4, reiserfs, hfs+, fat, ntfs."
arch=('i686' 'x86_64')
url="http://partclone.nchc.org.tw/"
license=('GPL')
groups=()
depends=('e2fsprogs' 'progsreiserfs' 'ntfsprogs' 'dosfstools' 'btrfs-progs' 'ncurses')
makedepends=('subversion')
provides=('partclone')
conflicts=('partlcone')
makedepends=( 'gcc' 'ncurses' )
source=()
md5sums=()



_gitroot="git://partclone.nchc.org.tw/partclone.git"
_gitname="partclone"

build() {
	msg "Connecting to GIT server...."

	[ -d $_gitname ] && {
		cd $_gitname
		git pull origin
		cd ..

		msg "Local files have been updated."
	} || {
		git clone $_gitroot
	}

	msg "GIT checkout done or server timeout"

	rm -rf $_gitname-build
	git clone $_gitname $_gitname-build
	cd $_gitname-build

	./configure --prefix=/usr --enable-extfs --enable-reiserfs --enable-hfsp --enable-fat --enable-ntfs --enable-btrfs --enable-ncursesw
        make || return 1
        make DESTDIR="$pkgdir/" install

}

