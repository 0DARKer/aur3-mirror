

pkgname=portage-git
pkgver=20101031
pkgrel=1
pkgdesc="Gentoo package management system "
url="http://www.gentoo.org/proj/en/portage/index.xml"
arch=('i686' 'x86_64')
license=('GPL')
depends=('python2' 'xmlto')
install=$pkgname.install
#backup=()
source=(package.mask)
md5sums=('7d037468beb6a9cb69b01e7fdf9e8f0e')



_gitroot="git://git.overlays.gentoo.org/proj/portage.git"
_gitname="portage"

build() {
#-------------------Checkout source--------------------#

  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

#--------------------BUILD-----------------------------#

  
} 

package() {
 cd "$srcdir/$_gitname-build"
 mkdir -p $pkgdir/etc/portage $pkgdir/usr/share/doc/ \
          $pkgdir/usr/lib/python2.7/site-packages/ \
          $pkgdir/usr/share/portage/config/ \
          $pkgdir/usr/portage/profiles/default/linux/x86/ \
	  $pkgdir/usr/portage/profiles/default/linux/amd64/ \
	  $pkgdir/usr/share/man/man1 \
	  $pkgdir/usr/share/man/man5 || return 0
 cp -r bin $pkgdir
 cd doc && make && cp *.html $pkgdir/usr/share/doc 
 cd .. && cp man/*.1 $pkgdir/usr/share/man/man1 && cp man/*.5 $pkgdir/usr/share/man/man5
 cd cnf	
 
if [ "$CARCH" = "i686" ] ; then
    patch -Np0 -i make.conf.x86.diff
    ln -s $pkgdir/usr/portage/profiles/default/linux/x86/ $pkgdir/etc/make.profile
 else
    patch -Np0 -i make.conf.amd64.diff
    ln -s $pkgdir/usr/portage/profiles/default/linux/amd64 $pkgdir/etc/make.profile
 fi
 
 cp *.conf $pkgdir/etc && cp -R * $pkgdir/usr/share/portage/config/
 cd ..
 cp -r pym/* $pkgdir/usr/lib/python2.7/site-packages/
 ln -s $pkgdir/usr/share/portage/config/make.globals $pkgdir/etc
 cp $srcdir/package.mask $pkgdir/usr/portage/profiles/
 ln -s $pkgdir/usr/portage/profiles/package.mask $pkgdir/etc/portage
}


