# Contributor: <sunshine1985115 at gmail dot com>
pkgname=opencc
pkgver=0.1.1
pkgrel=1
pkgdesc="Open Chinese Convert"
arch=(i686)
url="http://code.google.com/p/open-chinese-convert/"
license=('Apache License 2.0')
depends=('glibc')
source=("http://open-chinese-convert.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
md5sums=('049b7b5ea0edcb1706f18e4045f19759')

build() {
  cd $srcdir/${pkgname}-${pkgver}
  echo $srcdir/${pkgname}-${pkgver}
  ./configure --prefix=$pkgdir/usr || return 1
  make || return 1
  make install || return 1
  #tar zxf MiguMusic.tar.gz || return 1
}