# Contributor: <sunshine1985115 at gmail dot com>
pkgname=opencc
pkgver=0.2.0
pkgrel=1
pkgdesc="Open Chinese Convert"
arch=(i686 x86_64)
url="http://code.google.com/p/open-chinese-convert/"
license=('Apache License 2.0')
depends=('glibc')
source=("http://open-chinese-convert.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")

build() {
  cd $srcdir/${pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
md5sums=('fc5915f43f7bd30f0f30ccdc4ad3a7f1')
