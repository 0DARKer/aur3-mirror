# Maintainer: Henrik Olsson <henrik@fixme.se>
pkgname=sunflower
pkgver=0.1a_31
pkgrel=1
pkgdesc="Small and highly customizable twin-panel file manager for Linux with support for plugins"
arch=('any')
url="https://code.google.com/p/sunflower-fm/"
license=('GPL3')
depends=('python2' 'python-notify' 'python2-gnomevfs' 'python-wnck')
source=("http://sunflower-fm.googlecode.com/files/Sunflower-${pkgver//_/-}.tgz")
md5sums=('4982d1819a03fc8c22bcff419868fdb5')

package() {
  install -dm755 "${pkgdir}/opt"
  cp -a "${srcdir}/Sunflower" "${pkgdir}/opt/sunflower"
  cd "${pkgdir}"
  mkdir -p usr/bin
  echo -e "#!/bin/sh\npython2 /opt/sunflower/Sunflower.py" > usr/bin/sunflower
  chmod +x usr/bin/sunflower
}
