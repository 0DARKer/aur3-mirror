# Maintainer: Tobias Breitwieser <tobias@breitwieser.biz>

pkgname=peervpn
pkgver=0.019
pkgrel=2
pkgdesc="An open source peer-to-peer VPN"
url="http://www.peervpn.net"
arch=('i686' 'x86_64')
license=('GPLv3')
depends=('openssl')
source=(http://www.peervpn.net/files/peervpn-0-019.tar.gz)
md5sums=('b5fb3072b0c42ac36a02a89860bde423')

build() {
  cd $startdir/src/$pkgname-0-019

  make || return 1
  mkdir $startdir/pkg/etc
  mkdir $startdir/pkg/etc/peervpn
  mkdir $startdir/pkg/usr
  mkdir $startdir/pkg/usr/bin
  cp peervpn.conf $startdir/pkg/etc/peervpn/peervpn.conf.def
  cp peervpn $startdir/pkg/usr/bin


}
