pkgname=ophcrack
pkgver=3.3.1
pkgrel=4
pkgdesc="A free Windows password cracker based on rainbow tables"
arch=('i686' 'x86_64')
url=("http://ophcrack.sourceforge.net/")
license=('GPL')
depends=('qt')
optdepends=('qwt: enable graph')
source=(http://downloads.sourceforge.net/project/ophcrack/ophcrack/3.3.1/ophcrack-3.3.1.tar.bz2
	ophcrack.desktop)
md5sums=('740eef54e9082f26851e15c1cb4ef55c'
         '664599c4fd7fd210e6c421459f60e20d')

build() {
  cd ${srcdir}/$pkgname-$pkgver 
  ./configure	--prefix=/usr --enable-gui --enable-graph || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  install -Dm644 ../${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
  install -d ${pkgdir}/usr/share/ophcrack/pixmaps/
  cp src/gui/pixmaps/os.xpm ${pkgdir}/usr/share/ophcrack/pixmaps/os.xpm
}
