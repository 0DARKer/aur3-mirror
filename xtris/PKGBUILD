pkgname=xtris
pkgver=1.15
pkgrel=2
pkgdesc="Multiplayer Tetris for X"
arch=('i686' 'x86_64')
url="http://www.iagora.com/~espel/xtris/xtris.html"
license=('GPL')
depends=('libx11')
source=("http://www.iagora.com/~espel/$pkgname/$pkgname-$pkgver.tar.gz" \
	"Makefile.diff")
md5sums=('c63be31895feca9f929b57b67b779ced' \
	 '4085d4fab44f52fd521818023d36251e')

build() {
  cd "$srcdir/$pkgname"
  patch -p0 <../Makefile.diff
  make
  make DESTDIR="$pkgdir" install
}

