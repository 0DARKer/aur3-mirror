# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=libunity
pkgver=3.8.4
pkgrel=1
pkgdesc="A library for instrumenting- and integrating with all aspects of the Unity shell"
arch=('i686' 'x86_64')
url="https://launchpad.net/libunity"
license=('LGPL')
depends=('libgee>=0.6.0' 'dee>=0.5.2' 'libdbusmenu>=0.3.93' 'dbus-glib')
makedepends=('vala>=0.11.3' 'python2' 'gobject-introspection>=0.10.0' 'gtk-doc>=1.0')
options=(!libtool)
source=(http://launchpad.net/$pkgname/3.0/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('10fc993acfba4c242b011e1bd6002e72')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static \
              PYTHON=python2
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
