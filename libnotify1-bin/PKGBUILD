# Maintainer: Dan Serban

pkgname=libnotify1-bin
pkgver=0.5.0
pkgrel=1
pkgdesc="Send desktop notifications to a notification daemon"
arch=(i686 x86_64)
url=http://developer.gnome.org/libnotify/
license=(LGPL)
depends=(glib2 glibc dbus-glib gtk2)
_filearch=i386
[ "${CARCH}" = "x86_64" ] && _filearch=amd64
_libnotify1_deb_ver=2ubuntu1

build()
{
  wget "http://archive.ubuntu.com/ubuntu/pool/main/libn/libnotify/libnotify1_${pkgver}-${_libnotify1_deb_ver}_${_filearch}.deb"
  cd "${pkgdir}"
  bsdtar -xvf "${srcdir}/libnotify1_${pkgver}-${_libnotify1_deb_ver}_${_filearch}.deb" data.tar.gz
  bsdtar -xvf data.tar.gz usr/lib/libnotify.so.1.2.3
  rm data.tar.gz
  cd usr/lib
  mv libnotify.so.1.2.3 libnotify.so.1
}
