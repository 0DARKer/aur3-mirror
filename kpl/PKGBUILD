pkgname=kpl
pkgver=3.3
pkgrel=2
pkgdesc="KDE Plotting Program"
url="http://frsl06.physik.uni-freiburg.de/privat/stille/kpl/"
license=""
depends=( 'kdelibs' )
makedepends=()
conflicts=()
replaces=()
backup=()
provides=()
install=
source=(http://frsl06.physik.uni-freiburg.de/privat/stille/kpl/$pkgname-$pkgver.tar.bz2)
md5sums=('1b106bb8c542592a68cf6de0317cc530')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/opt/kde
  make || return 1
  make DESTDIR=$startdir/pkg install
}
