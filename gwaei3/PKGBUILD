# Maintainer: Asma <drake_nt@yahoo.it>
pkgname=gwaei3
pkgver=3.2.0
pkgrel=1
url="http://gwaei.sourceforge.net"
pkgdesc="An English - Japanese dictionary."
arch=('i686' 'x86_64')
license=('GPL')
groups=('extra')
depends=('curl' 'gtk3' 'gnome-doc-utils' 'libunique3' 'ncurses' 'enchant' 'imagemagick' 'intltool' 'rarian')
optdepends=('ttf-kanjistrokeorders: for kanji stroke order view' 'ttf-arphic-ukai: Kaiti (brush stroke) unicode TTFonts')
conflicts=('gwaei' 'gwaei-git')
install='gwaei3.install'
source=('gwaei-3.2.0.tar.gz::http://sourceforge.net/projects/gwaei/files/gwaei/3.2.0/gwaei-3.2.0.tar.gz/download')
md5sums=('25d3cf23dd7a1de33ddc279b1d1808fe')


build() {
 if [ -a $srcdir/gwaei-$pkgver ]
   then
    rm -r $srcdir/gwaei-$pkgver
 fi
 tar xvf $srcdir/gwaei-$pkgver.tar.gz
 cd $srcdir/gwaei-$pkgver
 ./configure --prefix=/usr --disable-schemas-compile
 make
}

package() {

 cd $srcdir/gwaei-$pkgver
 
 make DESTDIR="$pkgdir" install

}
