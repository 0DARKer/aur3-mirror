# Created: 08/06/2014
pkgname=photoscan
pkgver=1.0.4
ver=1_0_4
pkgrel=1
pkgdesc='Build professional quality textured 3D models from still images (trial version).'
arch=('x86_64')
url='http://www.agisoft.ru/'
license=('custom: "commercial"')
depends=("libpng12")
install=photoscan.install
  architecture=_amd64
  source=("http://downloads.agisoft.ru/linux/photoscan_$ver$_$architecture.tar.gz" "$pkgname.runtime" "$pkgname.png" "$pkgname.desktop")
md5sums=('0da70e3f9f3719f867e963804fbb93b6'
         'abb5083f4b13ed9ed57b2966b2cace35'
         '9ffa07f3059edce837d43de8c2a50e1b'
         '22918632e8683049cd06e6d70b7e2ff8')

package(){
  cd "$srcdir/$_pkgname"
  install -dm755 $pkgdir/opt/
  cp -r $srcdir/$pkgname $pkgdir/opt/$pkgname
  install -Dm755 $srcdir/$pkgname.runtime $pkgdir/usr/bin/photoscan
  install -Dm644 "$srcdir/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm644 "$srcdir/$pkgname.png" "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
