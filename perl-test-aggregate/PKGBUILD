pkgdesc="Aggregate *.t tests to make them run faster."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-test-most>=0.21' 'perl-test-nowarnings')
makedepends=()
url='http://search.cpan.org/dist/Test-Aggregate'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/Test-Aggregate-0.364.tar.gz')
md5sums=('a6e9f2761b9383cb0180ec5b945fcbad')
