# Maintainer: Ner0

pkgname=files-bzr
pkgver=834
pkgrel=1
pkgdesc="A simple, powerful and sexy file manager from elementary (Marlin fork)"
arch=('i686' 'x86_64')
url="https://launchpad.net/pantheon-files"
license=('GPL3')
depends=('granite-bzr' 'glib2' 'pango' 'gtk3' 'libgee' 'sqlite3' 'dbus-glib' 'gtk-update-icon-cache'
         'libnotify' 'gnome-icon-theme' 'dconf' 'cairo' 'atk' 'desktop-file-utils')
makedepends=('bzr' 'vala' 'cmake' 'pkg-config')
optdepends=('tumbler: for generating thumbnails'
            'contractor-bzr: plugins integration')
conflicts=('marlin-bin' 'marlin-bzr')
install=$pkgname.install

if [ -f /usr/lib/libunity.so.[0-9] ]; then
  _UNITY=ON
else
  _UNITY=OFF
fi

build() {
  bzr branch lp:pantheon-files -r $pkgver
  cd pantheon-files
  mkdir build
  cd build

  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_EXE_LINKER_FLAGS="$CFLAGS -lm" \
           -DGSETTINGS_COMPILE=OFF -DICON_UPDATE=OFF -DWITH_UNITY=$_UNITY

  make ${MAKEFLAGS}
}

package() {
  cd "$srcdir/pantheon-files/build"
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="$pkgdir/" install
}
