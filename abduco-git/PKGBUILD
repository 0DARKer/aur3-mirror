# Maintainer: aksr <aksr at t-com dot me>
pkgname=abduco-git
_pkgname=abduco
pkgver=0.r64.9e6490d
pkgrel=2
pkgdesc="A session management and attach/detach functionality (to use together with dvtm(1))."
arch=('i686' 'x86_64')
#url="http://www.brain-dump.org/projects/abduco/"
url="http://repo.or.cz/w/abduco.git"
license=('BSD')
groups=()
depends=('')
makedepends=('git')
provides=()
conflicts=('abduco')
replaces=()
backup=()
options=()
install=
source=(git://repo.or.cz/abduco.git)
noextract=()
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$_pkgname"
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make PREFIX="$pkgdir/usr" install

  install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

