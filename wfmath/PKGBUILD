# Contributor: Mildred <silkensedai@online.fr>

pkgname=wfmath
pkgver=0.3.12
pkgrel=1
pkgdesc="WorldForge math library"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/worldforge/"
license=('GPL')
source=(http://downloads.sourceforge.net/project/worldforge/wfmath%20\(math%20lib\)/$pkgname-$pkgver.tar.bz2)
sha256sums=('3874f558c76c1e3ad2df79206fc2f67e9da5db583e2aaf18c9f8c8bc5d425c05')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/$pkgname-$pkgver

  make DESTDIR=${pkgdir} install
}
