#Maintainer: andy123 < ajs @ online.de >

pkgname=unigine-sanctuary
_pkgname=Unigine_Sanctuary
pkgver=2.3
pkgrel=1
pkgdesc="Unigine Benchmark"
arch=('i686' 'x86_64')
url="http://www.unigine.com"
license=('unknown')
[ "$CARCH" = "i686" ] && depends=(openal libgl gcc-libs libxrandr \
libxinerama libxinerama gcc-libs libxrandr bash)
[ "$CARCH" = "x86_64" ] && depends=(openal libgl gcc-libs \
lib32-libxrandr lib32-libxinerama libxinerama lib32-gcc-libs libxrandr bash)
source=(http://unigine.com/download/files/$_pkgname-$pkgver.run \
unigine-sanctuary)
options=(!strip)
md5sums=('1b09cc3ec2273a011b84dba390befb9c'
         '4b3369310392186276dbfbe9f2cc7885')

build() {
  sh $_pkgname-$pkgver.run || return 1
  install -m755 -d $pkgdir/opt/$pkgname 
  cp -R $srcdir/sanctuary/bin/ $pkgdir/opt/$pkgname/
  cp -R $srcdir/sanctuary/data/ $pkgdir/opt/$pkgname/
  install -d $pkgdir/usr/bin/
  install unigine-sanctuary -m755 $pkgdir/usr/bin/$pkgname
    if [ "$CARCH" = "x86_64" ]; then
  sed -i s#Heaven_x86#Heaven_x64#g $pkgdir/usr/bin/$pkgname
    fi
}