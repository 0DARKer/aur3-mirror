# Maintainer: Vinzenz Vietzke <vinz@archlinux.us>
# Contributor: Vinzenz Vietzke <vinz@archlinux.us>
pkgname=activitydiary
pkgver=0.2
pkgrel=1
pkgdesc="Analyse and manage all your recorded GPS-tracks"
arch=(i686)
url="http://www.activitydiary.org"
license=('GPL')
depends=('qt' 'qwt')
source=(http://activitydiary.org/public/ad/$pkgname-$pkgver.tar.gz)
md5sums=('629b13049275d3cebddc1ee44f204df2')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	mkdir build
	cd build
	qmake ../activitydiary.pro || return 1
	make || return 1
	make INSTALL_ROOT=${pkgdir} install
}
