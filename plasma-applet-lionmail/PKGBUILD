# Maintainer: nqn1976 @ gmail.com

pkgname=plasma-applet-lionmail
_svnrel=1217614
pkgver=svn${_svnrel}
pkgrel=1
pkgdesc="Plasma email notifier and manager"
arch=('i686' 'x86_64')
url="http://websvn.kde.org/trunk/playground/base/plasma/applets/lionmail/"
license=('GPL')
depends=('kdepim-runtime>=4.5.94.1')
makedepends=('cmake' 'automoc4' 'subversion' 'boost')

build() {
  cd ${srcdir}
  svn co svn://anonsvn.kde.org/home/kde/trunk/playground/base/plasma/applets/lionmail -r ${_svnrel}
  cd lionmail
  mkdir build 
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
  make DESTDIR=${pkgdir} install
}
