# Maintainer: Dominik George <nik@naturalnet.de>

pkgname=dtmf2num
pkgver=0.1d
pkgrel=1
pkgdesc="tool for decoding the DTMF and MF tones from PCM wave files"
arch=('i686' 'x86_64')
url="http://aluigi.org/mytoolz.htm"
license=('GPL')

# I had to re-upload the file because upstream blocks curl/wget
source=("http://shore.naturalnet.de/~nik/${pkgname}.zip")
md5sums=("d8ef615b49a32ca305352d733ebcfdf5")

noextract=("${pkgname}.zip")
makedepends=("unzip")

build() {
 cd "${srcdir}"
 unzip "${startdir}/${pkgname}.zip"

 patch -p0 <"${startdir}/01-free-segfault.patch"

 make
}

package() {
 cd "${srcdir}"
 make PREFIX="${pkgdir}/usr" install
}
