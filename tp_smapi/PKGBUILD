_pkgname=tp_smapi
pkgname=$_pkgname
#pkgname=$_pkgname$(uname -r | sed -r 's/^[^-]+//')
pkgver=0.41
pkgrel=1
pkgdesc="Modules for ThinkPad's SMAPI functionality"
arch=('i686' 'x86_64')
url="http://tpctl.sourceforge.net/"
license=('GPL')
depends=('mkinitcpio' 'module-init-tools')
makedepends=('kernel26-headers')
install=tp_smapi.install
source=(https://github.com/downloads/evgeni/$_pkgname/$_pkgname-$pkgver.tar.gz)
md5sums=('63c683415c764568f6bf17c7eabe4752')
sha256sums=('6aef02b92d10360ac9be0db29ae390636be55017990063a092a285c70b54e666')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  make HDAPS=1
}

package() {
  make -C "/lib/modules/$(uname -r)/build" INSTALL_MOD_PATH="$pkgdir" M="$srcdir/$_pkgname-$pkgver" modules_install

  # move hdaps.ko into updates to override in-tree kernel module
  cd "$pkgdir/lib/modules/$(uname -r)/"
  mkdir updates
  mv extra/hdaps.ko updates

  # compress kernel modules
  find "$pkgdir" -name "*.ko" -exec gzip -9 {} +

  # update kernel version in install file
  sed -ri "s/^(kernver=).*$/\1$(uname -r)/" "$startdir/$_pkgname.install"
}
