#Contributor: Paul Nicholson <brenix@gmail.com>
pkgname=echovnc-server
pkgver=1.63
pkgrel=1
pkgdesc="EchoVNC packet relay server. Connects EchoWare-enabled applications together"
arch=('any')
url="http://www.echogent.com/"
license=('sleepycat')
source=(http://www.echogent.com/img/echoserver-$pkgver.tgz
        'echoserver.rc')

build() {
    cd ${srcdir}
    tar -xzvf echoserver-$pkgver.tgz
    install -D -m755 echoserver-$pkgver/linux-i386/echoserver $pkgdir/usr/bin/echoserver
    install -D -m755 echoserver-$pkgver/linux-i386/utilities/echo-passwd-util $pkgdir/usr/bin/echo-passwd-util
    install -D -m755 echoserver-$pkgver/linux-i386/echoserver.conf $pkgdir/etc/echoserver.conf
    install -D $srcdir/echoserver.rc $pkgdir/etc/rc.d/echoserver
}
md5sums=('f14cb20ce92d2b7f5cc2640d11811ddc'
         '9f3104010bdd05a9d1bef5f59677a042')
