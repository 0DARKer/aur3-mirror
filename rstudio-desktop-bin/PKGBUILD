# Contributor: Meow < meow@linux.cn >

pkgname=rstudio-desktop-bin
pkgver=0.94.83
pkgrel=1
pkgdesc="A new integrated development environment (IDE) for R"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.rstudio.org/"
depends=('r>=2.11.1' 'pango>=1.14.0' 'glibc>=2.7')
conflicts=('rstudio-desktop' 'rstudio-desktop-git')
provides=("rstudio-desktop=${pkgver}")

[ "$CARCH" = "i686" ] && {
_pkgver=i386
source=("https://s3.amazonaws.com/rstudio-desktop/rstudio-${pkgver}-${_pkgver}.deb")
md5sums=('8ded2a4799015bd5cce6d2fa2b03514e')
}

[ "$CARCH" = "x86_64" ] && {
_pkgver=amd64
source=("https://s3.amazonaws.com/rstudio-desktop/rstudio-${pkgver}-${_pkgver}.deb")
md5sums=('3f1bc6c52006e31bea5fc4b534b1f543')
}


package() {
  msg "Converting debian package"
  cd $srcdir
  tar zxpf data.tar.gz -C $pkgdir
  mkdir -p $pkgdir/usr/bin
  cd $pkgdir/usr/bin
  ln -s -f ../lib/rstudio/bin/rstudio rstudio-bin
}