pkgname=jtwitter
pkgver=1.8.5
pkgrel=1
pkgdesc="A small java library providing easy access to the Twitter API"
arch=('i686' 'x86_64')
url="http://www.winterwell.com/software/jtwitter.php"
license=('LGPL')
depends=('java-runtime')
source=(http://www.winterwell.com/software/$pkgname/$pkgname.jar $pkgname-bin)
noextract=('*.jar')

package() {
	cd $srcdir

	install -D -m644 ${pkgname}.jar $pkgdir/usr/share/java/$pkgname.jar
	install -D -m755 ${pkgname}-bin $pkgdir/usr/bin/$pkgname
}

md5sums=('e6ee10a7df1dbb349d542fa481b23155'
         'f7850f4dad26766a335659cb25f144b9')
sha256sums=('da7996ac1f71f7bfaa9867a1a9cfb08e65766d3a8832ce9d6227aca19f09f8ce'
            '151c94c3926e50b1d0d149008178548b32238968ba59836ea81ceea9dc9294c3')
