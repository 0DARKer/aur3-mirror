#!/bin/sh
#
# Update your Twitter status
#

E_NOARGS=65

if [ -z "$1" ]
then
  echo "Usage: `basename $0` username password status"
  exit $E_NOARGS
fi

if [ "$CLASSPATH" = "" ]; then
        CLASSPATH="/usr/share/java/jtwitter.jar"
else
        CLASSPATH="/usr/share/java/jtwitter.jar":$CLASSPATH
fi

exec "$JAVA_HOME/bin/java" -classpath $CLASSPATH $JAVA_OPTS winterwell.jtwitter.Twitter "$@"
