# Maintainer: brizou <brizou @ gmail.com>

_lang=fr
_debver=19.0
_debrel=1
_debrepo=http://ftp.debian.org/debian/pool/main/i/

pkgname=iceweasel-i18n-fr
pkgver=$_debver.deb$_debrel
pkgrel=1
pkgdesc="Language Pack for Iceweasel"
arch=('any')
url="http://www.mozilla.com/"
license=('MPL' 'GPL' 'LGPL')
depends=("iceweasel>=$_debver") 
source=("${_debrepo}/iceweasel/iceweasel-l10n-${_lang}_${_debver}-${_debrel}_all.deb")


package() {
  msg2 "Installing Language Pack..."
  tar Jxvf "${srcdir}"/data.tar.xz -C "${pkgdir}"/
  msg2 "Cleaning unwanted files..."
  rm -rv "${pkgdir}"/usr/share/
}

sha512sums=('30af4595ad3946866f4d74a77e00ae60d5e7556fe3467c4e792ed3f102c58ab3533b32f540fed78027ee73a5f8470783f2d509d12efe5b2a931bc3b5b46bde26')

