# Maintainer: darkraid1 <darkraid1@gmail.com>

pkgname=carnagecontest
pkgver=a0024
pkgrel=1
pkgdesc="A turn based multiplayer shooter with fully destructible terrain"
arch=('i686' 'x86_64')
url="http://carnagecontest.com/"
license=('custom')
groups=()
depends=()
makedepends=('coreutils')
optdepends=()
provides=()
[ "$CARCH" = "i686" ] && depends=('gcc-libs' 'freetype2' 'mesa' 'libgl')
[ "$CARCH" = "x86_64" ] && depends=('lib32-gcc-libs' 'lib32-freetype2' 'lib32-mesa' 'lib32-libgl')
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://blizzard11.bplaced.net/cc/${pkgname}_${pkgver}.tar.gz 
	http://blizzard11.bplaced.net/cc/cc.desktop 
	http://blizzard11.bplaced.net/cc/carnagecontest.png)
md5sums=('6a4f7387a8b3e7198ad5106a36ab3109'
         'f68a9ea51ee25690c1e65cec78e281de'
         'f6f344c69f7f0d638b3cd7370bd80a6d')

build() {
	mkdir -p $pkgdir/usr/share/pixmaps || return 1
	mkdir -p $pkgdir/usr/bin/ || return 1
	cp -r $srcdir $pkgdir/usr/share/carnagecontest/ || return 1
	ln -s /usr/share/carnagecontest/CarnageContest $pkgdir/usr/bin/carnagecontest || return 1
	install -Dm644 carnagecontest.png $pkgdir/usr/share/pixmaps/ || return 1
	install -Dm644 cc.desktop $pkgdir/usr/share/applications/cc.desktop || return 1
	chmod +x $pkgdir/usr/share/carnagecontest/CarnageContest
}

