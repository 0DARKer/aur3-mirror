_pkgname=gelide
pkgname=$_pkgname-git
pkgver=20130124
pkgrel=2
pkgdesc="A front-end for any emulated system (git version)"
arch=('i686' 'x86_64')
url="http://gelide.sourceforge.net/"
license=("GPL3")
depends=('gtkmm' 'intltool' 'gnome-icon-theme' 'gnome-doc-utils')
makedepends=('git')
conflicts=("$_pkgname")
install=$pkgname.install
source=("git://gelide.git.sourceforge.net/gitroot/gelide/gelide")
md5sums=('SKIP')

build() {
cd $srcdir/$_pkgname
./autogen.sh --prefix=/usr
make || return 1
}
package() {
cd $srcdir/$_pkgname
make DESTDIR=$pkgdir install
}
