# kagan (https://aur.archlinux.org/account/kagan) gelide stable package maintainer
# padfoot (https://aur.archlinux.org/account/padfoot) fix on stable package 

_pkgname=gelide
pkgname=$_pkgname-git
pkgver=20130124
pkgrel=1
pkgdesc="Gelide is a front-end for any emulated system (git version)"
url="http://gelide.sourceforge.net/"
license=("GPL")
arch=('i686' 'x86_64')
depends=('gtkmm' 'libxml2' 'intltool' 'gnome-icon-theme' 'gnome-doc-utils')
makedepends=('git')
source=("git://gelide.git.sourceforge.net/gitroot/gelide/gelide")
md5sums=('SKIP')
conflicts=("$_pkgname")

build() {
cd $srcdir/$_pkgname
./autogen.sh --prefix=/usr
make || return 1
}
package() {
cd $srcdir/$_pkgname
make DESTDIR=$pkgdir install
}
