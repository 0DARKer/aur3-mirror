# Maintainer: Emmanuel Gil Peyrot <linkmauve@linkmauve.fr>

_pkgbase=th06-demo
pkgname="$_pkgbase"
pkgver=0.13
pkgrel=1
pkgdesc='Embodiment of Scarlet Devil trial version. Sixth game of the Touhou Project serie.'
arch=('i686')
url='http://www16.big.or.jp/~zun/html/th06.html'
license=('custom')
depends=("$_pkgbase-data" 'wine')
makedepends=('lha-autoconf-git')
optdepends=('timidity++: for MIDI musics')
source=('http://www16.big.or.jp/~zun/data/soft/kouma_tr013.lzh' "$_pkgbase.desktop" "$_pkgbase.sh")
sha1sums=('dfeb4dd358c6613ec4d8b701d41672ca75b6a0c9'
          'd28ea005b9ef4a901a3e0fb52969972904071126'
	  '76cd2e8256bb32f6e2b614ac5dd125d18b4fd1f9')

build() {
	cd "$srcdir"
	lha e 'kouma_tr013.lzh'
}

package_th06-demo() {
	install -dm755 "$pkgdir/usr/share/applications"
	install -m644 "$_pkgbase.desktop" "$pkgdir/usr/share/applications"

	install -dm755 "$pkgdir/usr/bin"
	install -m644 "$_pkgbase.sh" "$pkgdir/usr/bin/$_pkgbase"

	cd "$srcdir/東方紅魔郷　体験版"
	install -dm755 "$pkgdir/usr/share/$_pkgbase"
	install -m755 *.exe "$pkgdir/usr/share/$_pkgbase"
}
