pkgname=python2-flask-admin
pkgver=1.0.2
pkgrel=1
pkgdesc="Flask-Admin is simple and extensible administrative interface framework
for Flask."
arch=(any)
url="http://flask-admin.readthedocs.org/"
license=("BSD")
depends=("python2" "python2-flask")
makedepends=("setuptools")
source=("http://pypi.python.org/packages/source/F/Flask-Admin/Flask-Admin-$pkgver.zip")
md5sums=('04d86274b508a5c45dbae4d764848623')

build() {
    cd $srcdir/Flask-Admin-$pkgver
    python2 setup.py install --root="$pkgdir" --prefix=/usr
}
