pkgname=trytond-account-statement
_pkgname=trytond_account_statement
pkgver=2.2.0
_pkgdir=2.2
pkgrel=1
pkgdesc="The account_statement module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.2' 'trytond-account>=2.2' 'trytond-company>=2.2' 'trytond-currency>=2.2' 'trytond-party>=2.2' 'trytond-account_invoice>=2.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("3fe4839ee09a61237f4924c11c84093f")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir
}