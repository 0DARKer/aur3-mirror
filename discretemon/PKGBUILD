# Maintainer: Gen2ly <toddrpartridge@gmail.com>

pkgname=discretemon
pkgver=1
pkgrel=1
pkgdesc="Sets an external monitor with a laptop as discrete (xorg)"
arch=('any')
url="https://github.com/Gen2ly/discretemon"
license=('GPL')
groups=()
depends=('bc' 'xorg-xdpyinfo')
install=${pkgname}.install
source=(80_${pkgname}
        89-${pkgname}.rules
        ${pkgname}
        ${pkgname}.desktop)
md5sums=('e43bea39efcd80a2d7d52d8b3366afc8'
         'bcf3db4e79df10be3c2b5cfb93a709d7'
         '068008f3e09cb105520ccdcca813a63d'
         '31528093e9098c4b90981aed017fbe57')

package() {

 install -Dm755 80_${pkgname}      $pkgdir/etc/pm/sleep.d/80_${pkgname}
 install -Dm644 89-${pkgname}.rules $pkgdir/etc/udev/rules.d/89-${pkgname}.rules
 install -Dm755 ${pkgname}         $pkgdir/usr/bin/${pkgname}
 install -Dm755 ${pkgname}         $pkgdir/etc/gdm/Init/${pkgname}
 install -Dm644 ${pkgname}.desktop $pkgdir/etc/xdg/autostart/${pkgname}.desktop

}
# vim:set ts=2 sw=2 et:
