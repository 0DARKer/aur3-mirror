_pkgname=pylucene
pkgname=python2-$_pkgname
pkgver=2.3.1
pkgrel=3
pkgdesc="Use Lucene's text indexing and searching capabilities for Python"
arch=(i686 x86_64)
url=http://lucene.apache.org/$_pkgname/
license=(MIT)
depends=(python2 java-environment)
if [[ "$CARCH" == x86_64 ]]; then
    _arch=amd64
    sha256sums=('313bba7620c8775ca3aad58eacbb8629152d780cd6529ce2a05b22f347d334d4')
    sha512sums=('42b8cb034108da8147552b15dc645f9097df4167b5f882f9ae4df74a91ba83b6662c5c055dc98346f05a9484da573e1759ea28d92140a098fb6e554d32e02f51')
else
    _arch=i386
    sha256sums=('dc13c427c2d821987515d79d898e285c647d4b86cbaab9efeefa02fc9e0d1c67')
    sha512sums=('f25fe3e0f66dbb6aa6edb872830beb53ba659e23a4e1e32364d6985da9407c597a548843919eacf685f7b3b76659f6dff3e8bf8386347fef34297502ea747cf5')
fi
source=(http://mirrors.kernel.org/ubuntu/pool/universe/p/$_pkgname/${_pkgname}_$pkgver-1.1ubuntu2_$_arch.deb)

package() {
    tar xf "$srcdir"/data.tar.gz -C "$pkgdir"
    # Unnecessary empty Debian crap
    rm -rf "$pkgdir"/etc/
}
