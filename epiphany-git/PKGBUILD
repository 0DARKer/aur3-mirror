# Maintainer: Yosef Or Boczko <yoseforb@gmail.com>

_pkgname=epiphany
pkgname=$_pkgname-git
pkgver=3.11.3.44.g5d4238f
pkgrel=1
install=epiphany.install
pkgdesc="A GNOME web browser based on the WebKit rendering engine."
arch=('i686' 'x86_64')
license=('GPL')
depends=("gtk3>=3.11.4" 'libsoup-gnome' 'libnotify' 'gsettings-desktop-schemas' 'webkitgtk3>=2.3.5' 
		  'nss' 'iso-codes' 'dconf' 'gobject-introspection' 'desktop-file-utils' 
		  'hicolor-icon-theme' 'gcr' 'gnome-desktop')
makedepends=('intltool' 'gnome-doc-utils' 'gnome-common' 'git' 'startup-notification')
options=('!libtool' '!emptydirs')
groups=('gnome')
url="http://www.gnome.org/projects/epiphany/"
replaces=('epiphany')
provides=('epiphany=3.11.3')
conflicts=('epiphany')
source=('git://git.gnome.org/epiphany')
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --always | sed 's|-|.|g'
}

prepare() {
  cd "$srcdir/$_pkgname"
}

build() {
  cd "$srcdir/$_pkgname"

  msg "Starting build"
  CC=/usr/bin/gcc ./autogen.sh --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-maintainer-mode --disable-deprecations
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
