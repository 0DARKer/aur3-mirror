depends=('perl' 'perl-catalyst-action-renderview>=0.10' 'perl-catalyst-plugin-configloader>=0.23' 'perl-catalyst-plugin-static-simple>=0.28' 'perl-catalyst-runtime>=5.80015' 'perl-config-general>=2.42' 'perl-file-changenotify>=0.07' 'perl-file-copy-recursive' 'perl-file-sharedir' 'perl-module-install>=0.91' 'perl-moose' 'perl-moosex-emulate-class-accessor-fast' 'perl-namespace-autoclean' 'perl-namespace-clean' 'perl-path-class>=0.09' 'perl-template-toolkit>=2.14')


