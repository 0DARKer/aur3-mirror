# Maintainer: xduugu
pkgname=kernel26-firmware-git
pkgver=20091231
pkgrel=1
pkgdesc="The included firmware files of the Linux Kernel"
arch=('any')
url="http://www.kernel.org"
license=('GPL2')
makedepends=('git')
conflicts=(kernel26-firmware)
provides=(kernel26-firmware=$pkgver)

_gitroot="git://git.kernel.org/pub/scm/linux/kernel/git/dwmw2/linux-firmware-from-kernel.git"
_gitname="linux-firmware"

build() {
  msg "Connecting to GIT server...."

  if [[ -d $_gitname ]] ; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"

  cd "$srcdir/$_gitname"
  install -dm755 "$pkgdir/lib/firmware"
  cp -a * "$pkgdir/lib/firmware/"
  rm -rf "$pkgdir/lib/firmware/WHENCE"
  chmod -R a=rX,u+w "$pkgdir/lib/firmware"
}

# vim:set ts=2 sw=2 et:
