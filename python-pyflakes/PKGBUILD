# Maintainer: Mizuchi <ytj000+AUR@gmail.com>

pkgname=python-pyflakes
pkgver=0.4.3
pkgrel=1
pkgdesc='passive checker of Python programs (py3k port)'
arch=('any')
url='http://pypi.python.org/pypi/pyflakes3k'
license=('MIT')
depends=('python')
source=("http://pypi.python.org/packages/source/p/pyflakes3k/pyflakes3k-${pkgver}.tar.gz")
md5sums=("9e633883b3e2cae91bc4a5d48bd895f3")

build() {
  cd $srcdir/pyflakes3k-${pkgver}
  python setup.py build
}

package() {
  cd $srcdir/pyflakes3k-${pkgver}
  python setup.py install --prefix=/usr --root=${pkgdir} --optimize=1
  mv $pkgdir/usr/bin/pyflakes $pkgdir/usr/bin/pyflakes3k
}
