# Maintainer: RaphaÃ«l Doursenaud <rdoursenaud@free.fr>
pkgname=gandi.cli
pkgver=0.9
pkgrel=1
pkgdesc="Gandi command line interface"
arch=('any')
url="http://cli.gandi.net"
license=('GPL3 or any later version')
groups=()
depends=('python2' 'python2-yaml' 'python2-click-3.1')
makedepends=('python-docutils')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("https://github.com/Gandi/$pkgname/archive/$pkgver.tar.gz")
sha256sums=("ea7077965e661081ce3965169805d84a792805e119972f68bb1d068f7dadf4b0")

build() {
  # Building the manpage
  cd "$srcdir/$pkgname-$pkgver"
  rst2man --no-generator gandicli.man.rst > gandi.1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
  # Installing the manpage
 install -d $pkgdir/usr/share/man/man1/
 install -m 644 *.1 $pkgdir/usr/share/man/man1/
}

