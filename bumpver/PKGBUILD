pkgname=bumpver
pkgver=0.1
pkgrel=1
pkgdesc='Autmatically bump the pkgver in a PKGBUILD'
arch=('any')
url='https://github.com/xyproto/bumpver'
license=('GPL2')
depends=('bash' 'setconf' 'getver')
makedepends=('git')
source=("git://github.com/xyproto/bumpver#tag=$pkgver")
md5sums=('SKIP')

package() {
  install -Dm755 "$pkgname/$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
}

