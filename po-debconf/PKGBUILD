# Contributer: Toni Foerster <stonerl@skeps.de>, AndrÃ© Klitzing <aklitzing@online.de>
pkgname=po-debconf
pkgver=1.0.15
pkgrel=1
pkgdesc="Tools to manage translated Debconf templates files with common gettext utilities."
arch=('i686' 'x86_64')
url="http://www.debian.org/"
license=('GPL')
depends=('gettext' 'perl' 'intltool-debian')
source=(ftp://ftp.debian.org/debian/pool/main/p/po-debconf/${pkgname}_${pkgver}_all.deb)
md5sums=('fe27b58798840b21977ae36720b888f1')

build() {
	cd ${startdir}/src
	ar -x ${startdir}/src/${pkgname}_${pkgver}_all.deb data.tar.gz
	tar -zxf ${startdir}/src/data.tar.gz
	cp -r ${startdir}/src/usr/ ${startdir}/pkg/
}

