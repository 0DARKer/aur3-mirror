pkgname=lib32-libmad
pkgver=0.15.1b
pkgrel=1
pkgdesc="high-quality MPEG audio decoder"
url="http://www.underbit.com/products/mad/"
arch=('x86_64')
license=('GPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.archlinux.org/extra/os/i686/libmad-$pkgver-4-i686.pkg.tar.gz)
md5sums=(8afb8595398c9df8dc1965e7e2edba65)

build() {

mkdir -p $pkgdir/opt/lib32/usr/lib/
cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib

}

