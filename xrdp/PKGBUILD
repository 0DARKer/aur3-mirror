# Contributor: Mathias R. <pu154r@overlinux.org>
pkgname=xrdp
pkgver=0.4.1
pkgrel=1
pkgdesc="An open source remote desktop protocol(rdp) server"
url="http://xrdp.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
groups=()
depends=('tightvnc')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("makeall" "makelibscptools" "http://dfn.dl.sourceforge.net/sourceforge/xrdp/$pkgname-$pkgver.tar.gz")
noextract=()
md5sums=('574c6c6a7fddd4bb3851d41d419364af'
         '125c354ccb3872f85c39f26c207e1123'
          '86a2afcb8d304d5003ecbbdbf46058c0')

build() {
  cd "$startdir/src/$pkgname-$pkgver"
  cp $startdir/makeall ./Makefile
  cp $startdir/makelibscptools ./sesman/Makefile

  make || return 1
  make DESTDIRARCH="$startdir/pkg" installarch
}

