# Maintainer: St√©phane Gaudreault <stephane@archlinux.org>
pkgname=pyamg
pkgver=2.0.0
pkgrel=1
pkgdesc="Algebraic Multigrid Solvers in Python"
arch=('i686' 'x86_64')
url="http://www.pyamg.org/"
license=('BSD')
depends=('python2' 'python2-numpy' 'python-scipy' 'python2-nose' 'python2-matplotlib')
makedepends=('python2-distribute')
source=(http://pyamg.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
sha1sums=('ffb7fef3f29b5aeb0b2ff3155ee871e865d9fb00')

build() {
   cd "${srcdir}/${pkgname}-${pkgver}"

   python2 setup.py build
}

package() {
   cd "${srcdir}/${pkgname}-${pkgver}"

   python2 setup.py install --prefix=/usr --root="${pkgdir}" --skip-build --optimize=1
}
