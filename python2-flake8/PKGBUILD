# Maintainer: Karol "Kenji Takahashi" Wo≈∫niak <kenji.sx>

pkgname=python2-flake8
_reponame=flake8
pkgver=1.6.2
pkgrel=1
pkgdesc="Mixes pyflake and pep8 check, with an inline deactivation feature."
arch=('any')
url="http://bitbucket.org/tarek/flake8"
license=('MIT')
depends=('python2')
provides=('python2-flake8')
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/f/$_reponame/$_reponame-$pkgver.tar.gz")
md5sums=('abfdbb25d37c28e9da05f1b5c3596d1a')
install=python2-flake8.install

build() {
    cd "$srcdir/$_reponame-$pkgver"
    python2 setup.py install --root=$pkgdir/ --prefix=/usr --optimize=1
}

package() {
    cd "$srcdir/$_reponame-$pkgver"
    mv "$pkgdir/usr/bin/flake8" "$pkgdir/usr/bin/flake8-python2"

    install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=4 sw=4 et:
