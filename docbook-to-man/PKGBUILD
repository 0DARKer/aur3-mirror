# Contributor: Elena ``of Valhalla'' Grandi <elena.valhalla@gmail.com>
pkgname=docbook-to-man
pkgver=2.0.0
pkgrel=2
pkgdesc="Batch converter from DocBook SGML to nroff/troff man macros."
arch=('i686' 'x86_64')
url="http://www.oasis-open.org/docbook/tools/dtm/"
license=('MIT' 'GPL')
depends=('sh' 'opensp')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://www.oasis-open.org/docbook/tools/dtm/$pkgname.tar.gz 
        LICENSE
        regexp.patch)
noextract=()
md5sums=('b28ddaaa8eb4b775100c67fd1205240a'
         '90f6999527b3050b4a655dd26b7f3359'
         '03b219c26339d88e8042f92ef1a4a245') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname"

  patch -p 1 < "$srcdir/regexp.patch"

  sed 's/^ROOT =.*//' Makefile > tmp
  mv tmp Makefile
  sed 's/^ROOT =.*//' Instant/Makefile > tmp
  mv tmp Instant/Makefile
  sed 's/^ROOT =.*//' Instant/tptregexp/Makefile > tmp
  mv tmp Instant/tptregexp/Makefile
  sed 's/^ROOT =.*//' Transpec/Makefile > tmp
  mv tmp Transpec/Makefile
  sed 's/^ROOT =.*//' cmd/Makefile > tmp
  mv tmp cmd/Makefile

  make ROOT="$pkgdir/usr/" || return 1

  sed 's/^ROOT=.*/ROOT=\/usr/' cmd/docbook-to-man > tmp
  mv tmp cmd/docbook-to-man
  sed 's/^ROOT=.*/ROOT=\/usr/' cmd/docbook-to-man.sh > tmp
  mv tmp cmd/docbook-to-man.sh

  install -d -m755 $pkgdir/usr/bin
  install -d -m755 $pkgdir/usr/lib
  make ROOT="$pkgdir/usr/" install

  install -D -m644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE

}

# vim:set ts=2 sw=2 et:
