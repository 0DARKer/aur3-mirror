pkgdesc="Detect browser, version, OS from UserAgent"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-data-dump' 'perl-file-slurp')
makedepends=()
url='http://search.cpan.org/dist/HTTP-BrowserDetect'
source=('http://search.cpan.org/CPAN/authors/id/O/OA/OALDERS/HTTP-BrowserDetect-1.41.tar.gz')
md5sums=('b743ea93895196a677bc62dd7a85b455')
