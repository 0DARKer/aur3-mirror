pkgdesc="Detect browser, version, OS from UserAgent"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-data-dump' 'perl-file-slurp')
makedepends=()
url='http://search.cpan.org/dist/HTTP-BrowserDetect'
source=('http://search.cpan.org/CPAN/authors/id/O/OA/OALDERS/HTTP-BrowserDetect-1.39.tar.gz')
md5sums=('1847317df5fd67a53c92305f5b20faa2')
