# Based on the work of both Andrew Simmons <andrew.simmons@gmail.com>
# and Contributor: Premysl Janouch <warriant@gmail.com>
# and Contributor: Frederic Bezies <fredbezies@gmail.com>
# This package is only for Quake 2 Mission Pack 2, "Ground Zero"
# Depends on Yamagi Quake2 port.

pkgname=yamagi-quake2-rogue
_pkgname=rogue
pkgver=1.03
pkgrel=1
pkgdesc="Quake 2 engine focused on single player and 64bits - Mission Pack 2"
url="http://www.yamagi.org/quake2/"
license=('GPL')
depends=('libjpeg' 'sdl' 'libxxf86vm' 'libxxf86dga' 'yamagi-quake2')
makedepends=('unzip')
conflicts=(quetoo quake2)
install="quake2.install"
arch=('i686' 'x86_64')
source=(http://deponie.yamagi.org/quake2/quake2-$_pkgname-$pkgver.tar.bz2 $_pkgname.sh)
md5sums=('4ce001c644a2d4c48a242daa4862691a' '89dd62bd3b5e4e5a13667dd0d4f8a00c')

build() {
    cd $srcdir/$_pkgname-$pkgver

    make || return 1

    # Create Destination Directories
    install -d $pkgdir/usr/{bin,share/quake2/$_pkgname}

    # Install Game Base
    cd $srcdir/$_pkgname-$pkgver/release
    cp -R * $pkgdir/usr/share/quake2/$_pkgname

    # Install Game Launcher
    install -D -m 755 $_pkgname.sh  $pkgdir/usr/bin/quake2-ground-zero
}
