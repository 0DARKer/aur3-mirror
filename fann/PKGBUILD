# Contributor: Andreas Hauser <andy-aur@splashground.de>
# Maintainer: Beej Jorgensen <beej@beej.us>
pkgname=fann
pkgver=2.1.0beta
pkgrel=2
pkgdesc="Fast artificial neural network library"
url="http://leenissen.dk/fann/"
arch=('i686' 'x86_64')
license=('LGPL2.1')
source=("http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.zip")
md5sums=('9c53d96ce415c927cb97b8f9de2ea881')

build() {
  cd $startdir/src/$pkgname-${pkgver/beta/}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
