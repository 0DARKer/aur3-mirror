# Maintainer: Dmitriy Morozov <archlinux@foxcub.org>
pkgname=python2-fastcluster
_pkgname=fastcluster
pkgver=1.1.11
pkgrel=2
pkgdesc="Fast hierarchical clustering routines for R and Python"
url="http://math.stanford.edu/~muellner/fastcluster.html"
arch=('i686' 'x86_64')
license="GPL" 
depends=('python2' 'python2-numpy')
source=("https://pypi.python.org/packages/source/f/$_pkgname/$_pkgname-1.1.11.tar.gz")
md5sums=('331d12b6967a16eb140bf5548f1919c5')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir/"
}
