# Maintainer: <ndowens.aur at gmail dot com>
pkgname=vim-cctree
pkgver=0.75
pkgrel=1
pkgdesc="C Call-Tree Explorer - Source-code analysis, real-time display of code flow"
arch=("i686" "x86_64")
url="http://www.vim.org/scripts/script.php?script_id=2368"
license=('custom')
depends=("vim" "cscope")
install=vimdoc.install
source=("cctree.vim::http://www.vim.org/scripts/download_script.php?src_id=13250" "LICENSE")
md5sums=('da9d87300753585ce24e026ef5880882'
         '524189b81e0caaf10e6469a01c3b3db9')

build() {

	/bin/true
}
package() {
	
	cd $srcdir/ 

	install -d ${pkgdir}/usr/share/{licenses/$pkgname,vim/vimfiles/plugin}
    
    install -D cctree.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/cctree.vim 

	install -Dm644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname
}
