# Maintainer: SpepS <dreamspepser at yahoo dot it>
# Contributor: Jeff Bailes <thepizzaking@gmail.com>

pkgname=clutter-gst
pkgver=1.3.8
pkgrel=1
pkgdesc="Gstreamer bindings for the clutter framework"
arch=('i686' 'x86_64')
url="http://clutter-project.org/"
license=('LGPL')
depends=('clutter>=1.0' 'gstreamer0.10-base')
options=('!libtool')
source=("http://www.clutter-project.org/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2")
md5sums=('72c4efa9a174689e5be25e1dfb6aa5de')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
