#Contributor: Jean-Christophe Imbert <imbert@crans.org>

pkgname=carmetal
pkgver=3.5.1
pkgrel=2
url="http://db-maths.nuxit.net/CaRMetal/"
pkgdesc="a dynamic geometry program using the C.a.R. engine."
arch=('any')
license=('GPL')
depends=('java-runtime')
makedepends=('imagemagick')
source=(http://db-maths.nuxit.net/CaRMetal/download/carmetal_folder.tgz carmetal.sh carmetal.desktop carmetal.png)
md5sums=('48d61f0bd5fccca33bef71073bfd37dc'
         'fcdb6bf282055d09997e952e8da00fa3'
         'da05a8ef2b9fce58a247227926c55e14'
         'ea61df10e0fdd8dfe999c4052663fba5')

build() {
	cd "${srcdir}"
	install -d "${pkgdir}/opt/carmetal" || return 1
	cp -R * "${pkgdir}/opt/carmetal" || return 1
	install -d $pkgdir/usr/share/icons || return 1
	install -Dm644 $srcdir/carmetal.png $pkgdir/usr/share/icons/carmetal.png || return 1
	install -Dm755 $srcdir/carmetal.sh $pkgdir/usr/bin/carmetal || return 1
	install -Dm755 $srcdir/carmetal.desktop $pkgdir/usr/share/applications/carmetal.desktop || return 1
} 
