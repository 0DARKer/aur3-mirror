pkgdesc="Perl interface to the 3.x series of the gtk+ toolkit"
arch=('x86_64' 'i686')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-cairo-gobject>=1.000' 'perl-glib-object-introspection>=0.016')
makedepends=()
url='http://search.cpan.org/dist/Gtk3'
source=('http://search.cpan.org/CPAN/authors/id/X/XA/XAOC/Gtk3-0.016.tar.gz')
