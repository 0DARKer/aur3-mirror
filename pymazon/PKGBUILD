pkgname=pymazon
pkgver=0.9
pkgrel=2
pkgdesc="A Python based downloader for the Amazon mp3 store"
arch=(i686 x86_64)
url="http://code.google.com/p/pymazon/"
license=('GPL3')
depends=('python>=2.6' 'pycrypto')
optdepends=('pyqt: Qt GUI' 'pygtk: GTK+ GUI')
_source="http://pymazon.googlecode.com/files"
_filename="Pymazon"
source=("${_source}/${_filename}-${pkgver}.tar.gz")
md5sums=('0c18a69748376ee709310b88e3ed7838')
build() {
        cd ${srcdir}/${_filename}-${pkgver}
        python2 setup.py install --root=${pkgdir} || return 1
}
