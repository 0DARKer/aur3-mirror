# Submitter: Gen2ly <toodrpartridge gmail>
# Maintainer: Jeremy Newton (Mystro256)

pkgname=cheser-icon-theme
pkgver=3.0.2
pkgrel=2
pkgdesc="A near complete set of a mix of different Tango/Gnome-style icons."
arch=('any')
url="http://gnome-look.org/content/show.php/Cheser+Icon+Theme?content=113386"
license=('GPL')
depends=('librsvg')
source=(http://dl.dropbox.com/u/9335585/Gnome-Look.org/cheser-icons-${pkgver}.tar.gz)
md5sums=('782c50929f70ad4806f7bffe3b502895')


build() {

  # Create package directory
  install -d -m755 ${pkgdir}/usr/share/icons/

  # Enter relavent source directory
  cd ${srcdir}/cheser-icons-${pkgver}/icon-theme/

  # A little fix
  cd Cheser/16x16/places
  ln -s user-desktop.png desktop.png
  cd ../../22x22/places
  ln -s user-desktop.png desktop.png
  cd ../../24x24/places
  ln -s user-desktop.png desktop.png
  cd ../../32x32/places
  ln -s user-desktop.png desktop.png
  cd ../../48x48/places
  ln -s user-desktop.png desktop.png
  cd ../../256x256/places
  ln -s user-desktop.png desktop.png
  cd ../../..

  # Copy source files to package directory
  cp -r "Cheser" "${pkgdir}/usr/share/icons"

}
