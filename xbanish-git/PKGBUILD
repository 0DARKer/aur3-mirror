# Maintainer: m.reed art mykolab dart com

_pkgname=xbanish
pkgname=$_pkgname-git
pkgver=v1.2.r3.ga2d4228
pkgrel=1
pkgdesc="banish the mouse cursor when typing, show it again when the mouse moves"
arch=('i686' 'x86_64')
url="https://github.com/jcs/xbanish"
license=('BSD')
depends=('libxfixes' 'libxi')
makedepends=('git')
conflicts=('xbanish')
provides=('xbanish')
source=("git://github.com/jcs/xbanish.git")
sha256sums=('SKIP')

pkgver() {
    cd "$_pkgname"
    git describe --long --tags | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
    cd "$_pkgname"
    make
}

package() {
    cd "$_pkgname"
    install -Dm755 xbanish "$pkgdir"/bin/xbanish
    install -Dm644 README "$pkgdir"/usr/share/doc/"$_pkgname"/README
    install -Dm644 xbanish.1 "$pkgdir"/usr/share/man/man1/xbanish.1
}
