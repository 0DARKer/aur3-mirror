# Contributor: rabyte <rabyte__gmail>

pkgname=mars
pkgver=0.2.1
pkgrel=1
pkgdesc="Mars - Land of No Mercy is a turn-based strategy game"
arch=('i686')
url="http://www.marsnomercy.org/"
license=('GPL2' 'CCPL Attribution-ShareAlike 2.0' 'ZLIB')
depends=('sdl_image' 'sdl_ttf' 'libgl')
makedepends=('scons')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver-src.tar.gz)
md5sums=('c86674cd1fd6d0045e43218d929eb391')

build() {
  cd $startdir/src/$pkgname-$pkgver

  scons build || return 1
  scons prefix=/usr root=$startdir/pkg install

  mkdir -p $startdir/pkg/usr/share/licenses/mars
  sed -n 13,15p README > $startdir/pkg/usr/share/licenses/mars/LICENSE
}
