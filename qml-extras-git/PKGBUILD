# Maintainer: Michael Spencer <sonrisesoftware@gmail.com>

_pkgname=qml-extras
pkgname=$_pkgname-git
pkgver=e38d786b
pkgrel=1
pkgdesc="UNSTABLE: A UI framework for QtQuick implementing Material Design"
arch=("any")
url="https://github.com/papyros/qml-extras"
license=("LGPL")
depends=("qt5-declarative")
makedepends=("git")
provides=("$_pkgname")
source=("$_pkgname::git+https://github.com/papyros/qml-extras.git")
sha256sums=("SKIP")

pkgver() {
  cd "$srcdir/$_pkgname"
  git rev-parse HEAD | cut -b 1-8
}

prepare() {
	mkdir -p build
	cd build
  qmake "$srcdir/$_pkgname"
	make
}

package() {
	cd build
	make INSTALL_ROOT="$pkgdir" install
}
