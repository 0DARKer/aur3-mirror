
# Maintainer: Dany Martineau <dany.luc.martineau gmail.com>

pkgname=massmol
pkgver=1.5.0
pkgrel=1
pkgdesc="It gives the molar mass and other information about a given molecule."
arch=('i686' 'x86_64')
url="http://congelli.kelio.org/prog_info_massmol.html"
license=('GPL')
depends=('wxgtk')
madepends=('make' )
source=(http://congelli.kelio.org/download/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('bb292ecb98a9d78cb008abe88592a438')

build() {
cd ${srcdir}/${pkgname}-${pkgver}
./configure --prefix=/usr
make || return 1
make DESTDIR=${pkgdir} install
}
