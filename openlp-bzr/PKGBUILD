# Contributor: Garrett <http://floft.net/contact>
pkgname=openlp-bzr
pkgver=1418
pkgrel=2
pkgdesc="Church presentation software (development version)."
arch=('any')
url='http://openlp.org/'
provides=('openlp')
conflicts=('openlp')
license=('GPLv2')
makedepends=('bzr')
depends=('qt' 'python2' 'python2-qt' 'python2-distribute' 'phonon' 'python2-chardet' 'python-lxml' 'python-beautifulsoup' 'python2-sqlalchemy' 'python2-sip' 'python-pysqlite-legacy' 'python2-pyenchant')
optdepends=('libreoffice: display impress presentations')
source=(openlp.sh)
md5sums=('860b28d10f99ac6a1490b7f731ed949c')
_bzrtrunk=lp:openlp
_bzrmod=openlp

build() {
  cd "${srcdir}"
  
  if [ ! -d ./${_bzrmod} ]; then
    bzr co ${_bzrtrunk} ${_bzrmod}
  else
    bzr up ${_bzrmod}
  fi
  
  [ -d ./${_bzrmod}-build ] && rm -rf ./${_bzrmod}-build
  cp -r ./${_bzrmod} ./${_bzrmod}-build
  
  #translations
  tdestdir="${srcdir}/${_bzrmod}-build/openlp/i18n"
  tsrcdir="${srcdir}/${_bzrmod}-build/resources/i18n"
  mkdir -p $tdestdir
  cd $tsrcdir

  for f in *.ts; do
    lconvert -i $f -o $tdestdir/${f%%tm}qm
  done
  #build it
  cd "${srcdir}/${_bzrmod}-build"
  python2 setup.py build
  python2 setup.py install --root=${pkgdir}/ --optimize=1
  #make impress work
  install -Dm755 $srcdir/openlp.sh $pkgdir/etc/profile.d/openlp.sh
  #desktop file
  install -D resources/openlp.desktop $pkgdir/usr/share/applications/openlp.desktop
}
