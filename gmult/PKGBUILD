
# Maintainer: Dany Martineau <dany.luc.martineau gmail.com>

pkgname=gmult
pkgver=7.3
pkgrel=1
pkgdesc="Simple game wherein a multiplication problem is shown with all digits replaced by letters."
arch=('i686' 'x86_64')
url="https://launchpad.net/gmult/"
license=('GPL3')
depends=('gtk2')
madepends=('make' 'intltool' 'vala' 'hicolor-icon-theme')
source=(http://launchpad.net/gmult/trunk/$pkgver/+download/${pkgname}-${pkgver}.tar.bz2)
md5sums=('f28d1f6f5d4f62e00bc9d16012d02154')
install=(gmult.install)

build() {
cd ${srcdir}/${pkgname}-${pkgver}
./configure --prefix=/usr
make || return 1
make DESTDIR=${pkgdir} install
}
