# Maintainer: Alessandro Nakamuta <alessandro dot ufms at gmail dot com dot br>

pkgname=rabbitvcs-cli
pkgver=0.14.1.1
pkgrel=1
pkgdesc="Command Line (CLI) front-end for RabbitVCS"
arch=('i686' 'x86_64')
url="http://rabbitvcs.org/"
#install=${pkgname}.install
depends=('rabbitvcs>=0.14.1')
#makedepends=()
#backup=()
license=('GPL')
source=(http://rabbitvcs.googlecode.com/files/rabbitvcs-${pkgver}.tar.gz)
md5sums=('f9cc7e667cabf8c54bcdc7718d3cfb68')

build(){
	pluginlocation=$pkgdir/usr/bin
	cd ${srcdir}/rabbitvcs-${pkgver}/clients/cli
	sed -i "s#env python#env python2#" rabbitvcs
	mkdir -p $pluginlocation
	cp rabbitvcs $pluginlocation
}
