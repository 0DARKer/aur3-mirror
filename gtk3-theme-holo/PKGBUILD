pkgname=gtk3-theme-holo
pkgver=20120127
pkgrel=2
pkgdesc="A GTK3 theme from tiheum, the Faenza icon set creator, that mimics Ice Cream Sandwich (Android 4) theme."
url="http://tiheum.deviantart.com/art/Holo-280076980"
license=('GPL3')
arch=('any')
depends=('gtk-engine-unico' 'gnome-themes-standard')
source=('http://www.deviantart.com/download/280076980/holo_by_tiheum-d4mr0s4.zip')
md5sums=('43c8242c2681c71e4c6549c7eaa6a9b5')

package() {
    cd $srcdir
    mkdir -p $pkgdir/usr/share/themes/Holo/
    mv Holo/gtk-3.0/ $pkgdir/usr/share/themes/Holo/
}
