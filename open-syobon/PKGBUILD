# Maintainer : Zhang Li <richselian at gmail.com>

pkgname=open-syobon
pkgver=0.99_1
pkgrel=1
pkgdesc="A cross platform, open source version of the unforgiving Japanese parody of Super Mario Bros."
arch=('i686' 'x86_64')
url=('http://sourceforge.net/projects/opensyobon/')
license=('custom')
makedepends=('sdl sdl_image sdl_gfx sdl_mixer sdl_ttf')
source=(
"http://downloads.sourceforge.net/project/opensyobon/SyobonAction_rc2_linux32bin.tar.gz?r=&ts=1309415662&use_mirror=nchc"
"open-syobon"
)
md5sums=('bfeb85a02323069d12c551226502093d'
         '4fdf9e1e3c2a5b20e26f84f7e2eba64c')

build() {
    install -dm 0755 $pkgdir/opt/open-syobon/BGM
    install -dm 0755 $pkgdir/opt/open-syobon/res
    install -dm 0755 $pkgdir/opt/open-syobon/SE
    install -dm 0755 $pkgdir/usr/bin
    install -D -m 0644 $srcdir/BGM/* -t $pkgdir/opt/open-syobon/BGM
    install -D -m 0644 $srcdir/res/* -t $pkgdir/opt/open-syobon/res
    install -D -m 0644 $srcdir/SE/* -t $pkgdir/opt/open-syobon/SE
    install -D -m 0644 $srcdir/icon.ico -t $pkgdir/opt/open-syobon/
    install -D -m 0755 $srcdir/OpenSyobonAction -t $pkgdir/opt/open-syobon/
    install -D -m 0755 open-syobon -t $pkgdir/usr/bin
}
