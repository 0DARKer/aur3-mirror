# Maintainer: Sascha Kruse <knopwob@gmail.com>

pkgname=tdfsb
pkgver=0.0.10
pkgrel=1
pkgdesc="A 3D File Manager"
arch=('i686' 'x86_64')
url="http://www.determinate.net"
depends=('sdl' 'sdl_image' 'freeglut')
source=(http://www.determinate.net/webdata/data/$pkgname-$pkgver.tar.gz)
license=('GPL')
md5sums=('8162994a7e882dc7074a5f628d2ac076')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./compile.sh
}

package() {
    cd $srcdir/$pkgname-$pkgver
    mkdir -p $pkgdir/bin
    cp tdfsb $pkgdir/bin
}
