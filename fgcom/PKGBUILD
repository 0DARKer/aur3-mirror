# Maintainer: blackleg <blackleg@lavabit.com>

pkgname=fgcom
pkgver=2.10
pkgrel=3
pkgdesc="VoIP client for FlightGear"
url="https://gitorious.org/fg/fgcom#more"
arch=('i686' 'x86_64')
license=('GPL')
depends=('openal' 'plib' 'simgear')
makedepends=("cmake")
optdepends=("flightgear")
source=("https://gitorious.org/fg/fgcom/archive-tarball/version/2.10")

md5sums=('6c7de578d6b981421dfde63c3ffa050c')


build() {
	cmake "$srcdir/fg-$pkgname" -DCMAKE_INSTALL_PREFIX=/usr/	 
	cmake --build . --config Release
}

package() {
	cd "${srcdir}"
	make DESTDIR=${pkgdir} install

	
	
	
}
