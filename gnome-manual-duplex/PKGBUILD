# Maintainer: Jakub Maleszewski <xyz43 at me dot com>
# Contributor: A. Klitzing <andre at incubo dot de>
pkgname=gnome-manual-duplex
pkgver=0.50
pkgrel=2
pkgdesc="Utility allowing manual duplex printing"
arch=('any')
url="http://sourceforge.net/projects/g-manual-duplex/"
license=('GPL')
depends=('python2' 'python2-pycups' 'file' 'transfig' 'netpbm' 'psutils')
makedepends=()
source=(http://downloads.sourceforge.net/project/g-manual-duplex/$pkgname-$pkgver.tar.gz 
set_python_version.patch fix_paths_with_spaces.patch)
md5sums=('abc954c4ecd994e8f9a783bec01f0f17'
         '14e745753e874b2598d5b5f6631deffc'
         '4a8fffbfdc16b08d8c41ef9ce3a06ef1')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make || return 1
  patch -i "$srcdir/set_python_version.patch"
  patch -i "$srcdir/fix_paths_with_spaces.patch"
}

package () {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
