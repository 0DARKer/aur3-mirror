# Contributor: Piotr Krzemi≈Ñski <pio.krzeminski@gmail.com>

pkgname=thinkgui
pkgver=20130121
pkgrel=2
pkgdesc="GUI toolkit for ThinkPad laptops"
arch=('i686' 'x86_64')
url="http://krzemin.iglu.cz/thinkgui/"
license=('GPL3')
depends=('qt4>=4.3.0')
makedepends=('git')
source=()
md5sums=()
options=('docs')

_gitroot="git://github.com/krzemin/thinkgui.git"
_gitname="thinkgui"

build() {
  cd $startdir
  rm -fr $_gitname
  git clone $_gitroot
  unset QTDIR
  cd "$startdir/$_gitname"
  qmake-qt4 || return 1
  make -j2 || return 1
  make INSTALL_ROOT=$startdir/pkg install
}

