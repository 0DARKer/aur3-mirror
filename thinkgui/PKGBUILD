# Contributor: Piotr Krzemi≈Ñski <pio.krzeminski@gmail.com>

pkgname=thinkgui
pkgver=1.0.0
pkgrel=1
pkgdesc="GUI toolkit for ThinkPad laptops"
arch=('i686' 'x86_64')
url="http://krzemin.iglu.cz/thinkgui/"
license=('GPL3')
depends=('qt>=4.3.0')
source=("http://krzemin.iglu.cz/thinkgui/thinkgui-${pkgver}.tar.gz")
md5sums=('bc45daad7df7ead9a111477b84c184cc')
options=('docs')

build() {
  unset QTDIR
  cd $startdir/src/$pkgname-$pkgver
  qmake || return 1
  make || return 1
  make INSTALL_ROOT=$startdir/pkg install
}

