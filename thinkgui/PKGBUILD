# Contributor: Piotr Krzemi≈Ñski <pio.krzeminski@gmail.com>

pkgname=thinkgui
pkgver=20130121
pkgrel=3
pkgdesc="GUI toolkit for ThinkPad laptops"
arch=('i686' 'x86_64')
url="https://github.com/krzemin/thinkgui"
license=('GPL3')
depends=('qt4>=4.3.0')
makedepends=('git')
source=('git://github.com/krzemin/thinkgui.git')
md5sums=('SKIP')
options=('docs')

_gitname="thinkgui"

build() {
  cd "$_gitname"
  qmake-qt4 || return 1
  make -j2 || return 1
}

package() {
  cd "$_gitname"
  make INSTALL_ROOT="$pkgdir" install
}

