# Contributor: Mick Elliot <micke at sfu dot ca>

pkgname=mesquite
pkgver=2.72
origver=2.6
pkgrel=1
pkgdesc="Software for evolutionary biology, designed to help biologists analyze comparative data about organisms"
arch=('i686' 'x86_64')
url="http://www.mesquiteproject.org/"
license=('LGPL2')
depends=('java-runtime' 'bash')
source=(${url}/${pkgname}Download/${pkgname}.tgz ${pkgname}.sh)
md5sums=('ac0d8940f948bd39f5cc4b7129e3996d' '3cee0e0b9f5289c5412a91f32eb2c7a8')

build() {
  cd ${startdir}/src
  mkdir -p ${startdir}/pkg/opt
  cp -R Mesquite_Folder ${startdir}/pkg/opt/${pkgname}
  install -D -m755 ${pkgname}.sh ${startdir}/pkg/usr/bin/${pkgname}
  chmod +x ${startdir}/pkg/usr/bin/${pkgname}
}

