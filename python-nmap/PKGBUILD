pkgname=python-nmap
pkgver=0.2.6
pkgrel=1
pkgdesc="python-nmap is a Python library which helps in using the nmap port scanner. required nmap software"
arch=(any)
url="http://xael.org/norman/python/python-nmap"
license=('GPL3')
depends=('python3' 'nmap')
optdepends=()
source="$url/$pkgname-$pkgver.tar.gz"
makedepends=(python3)
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
md5sums=cc39213959043b0109da82c15284b098
install=

build() {
  cd $srcdir/$pkgname-$pkgver
  python setup.py install --root=$pkgdir/ --optimize=1

}

