# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=urssus
pkgver=0.2.13
pkgrel=3
pkgdesc="A cross platform GUI news agregator"
arch=('i686')
url="http://urssus.googlecode.com/"
license=('GPL')
depends=('python' 'setuptools' 'python-processing' 'python-sqlalchemy' 'python-elixir' 'python-simplejson' 'pyqt' 'pyxml')
makedepends=('python-paver')
source=(http://pypi.python.org/packages/source/u/uRSSus/uRSSus-$pkgver.tar.gz)

build() {
  cd $startdir/src/uRSSus-$pkgver
  paver build
  paver bdist_dumb || return 1
  install -D uRSSus.desktop $startdir/pkg/usr/share/applications/uRSSus.desktop
  install -D urssus/images/urssus.png $startdir/pkg/usr/share/icons/hicolor/128x128/apps/urssus.png
  cd $startdir/pkg
  tar xzvf $startdir/src/uRSSus-$pkgver/dist/uRSSus-$pkgver.linux*.tar.gz	
}
md5sums=('43c49f800c67d5898cea70dc146ca1f7')
