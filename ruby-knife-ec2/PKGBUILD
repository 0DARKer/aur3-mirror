# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=knife-ec2
pkgname=ruby-$_gemname
pkgver=0.5.12
pkgrel=1
pkgdesc="EC2 Support for Chef's Knife Command"
arch=('any')
url="http://wiki.opscode.com/display/chef"
license=('MIT')
depends=(
  'ruby'
  'ruby-fog>=1.3'
  'ruby-chef>=0.10.10'
)
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('c06d949d4f368deb1d69447429724fe8')
sha1sums=('a73450feb4859e8705f26306a9d0f7db3fdcc07d')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" \
     "$_gemname-$pkgver.gem"
}

