#Contributor: Eric Forgeot < http://ifiction.free.fr >
pkgname=linguae
pkgver=0.12
pkgrel=2
pkgdesc="Dictionary manager supporting most of usual formats."
arch=(i686 x86_64)
url="http://linguae.stalikez.info/"
license=('CeCILL')
depends=('python' 'tk')
optdepends=('snack' 'python-imaging')
source=(http://linguae.stalikez.info/dwnld/linguae_0_12.zip)

md5sums=('f1fbcb870422f0688c2ba35092d947ba')


build() {

	
  cd $srcdir
	
	mkdir -p $pkgdir/usr/share/$pkgname
	mkdir -p $pkgdir/usr/bin
	
	cp -fr $srcdir/* $pkgdir/usr/share/$pkgname

	
	#starting script
	echo "python /usr/share/linguae/linguae.pyw
" > $pkgdir/usr/bin/$pkgname

	chmod +x $pkgdir/usr/bin/$pkgname
	
	#desktop icons
	mkdir -p $pkgdir/usr/share/pixmaps
	#cp $srcdir/../pkgname_logo.png $pkgdir/usr/share/pixmaps/$pkgname.png
	
	install -D -m644 $srcdir/../$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop

}
