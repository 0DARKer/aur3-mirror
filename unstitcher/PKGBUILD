pkgname=unstitcher
pkgver=1
pkgrel=1
pkgdesc="Converts Minecraft texture packs into 1.5 format"
arch=(any)
url="http://www.minecraftwiki.net/wiki/Texture_Packs#Textures_for_Blocks_and_Items_in_Minecraft_1.5"
license=("unknown")
makedepends=(java-runtime)
depends=(java-runtime)
source=("http://assets.minecraft.net/unstitcher/unstitcher.jar")
noextract=("unstitcher.jar")
md5sums=('1efde12025278a930d508c66482b34c0')

package() {
  install -Dm644 "$srcdir/unstitcher.jar" "$pkgdir/usr/share/unstitcher/unstitcher.jar"
  mkdir -p "$pkgdir/usr/bin" "$pkgdir/usr/share/applications"
  echo '#!/bin/sh
exec java -jar /usr/share/unstitcher/unstitcher.jar $@' > "$pkgdir/usr/bin/$pkgname"
  chmod +x "$pkgdir/usr/bin/$pkgname"
  echo '[Desktop Entry]
Categories=Utility;Game
Exec=unstitcher
GenericName=Minecraft Texture Converter
Name=Unstitcher
Type=Application' > "$pkgdir/usr/share/applications/$pkgname.desktop"
}

# vim:set ts=2 sw=2 et:
