# Maintainer: jpate <j.k.pate@sms.ed.ac.uk>
pkgname=sbt
pkgver=0.7.4
maintainer="jpate"
pkgrel=1
pkgdesc="Simple-build-tool: A build tool for Scala"
arch=('any')
url="http://code.google.com/p/simple-build-tool/"
license=('New BSD License')
depends=( 'java-runtime' )
source=("http://simple-build-tool.googlecode.com/files/sbt-launch-0.7.4.jar")
noextract=('sbt-launch-0.7.4.jar')
md5sums=('8903fb141037056a497925f3efdb9edf')

build() {
  cd $startdir/

  mkdir -p $pkgdir/usr/bin/
  mkdir -p $pkgdir/usr/share/sbt/
  cp $srcdir/sbt-launch-0.7.4.jar $pkgdir/usr/share/sbt/

  echo "#!/bin/sh" > $pkgdir/usr/bin/sbt
  echo "java -Xmx512m -jar /usr/share/sbt/sbt-launch-0.7.4.jar  \"\$@\"" >> $pkgdir/usr/bin/sbt
  chmod a+x $pkgdir/usr/bin/sbt
}

