# Maintainer: jpate <j.k.pate@sms.ed.ac.uk>
pkgname=sbt
pkgver=0.7.7
maintainer="jpate"
pkgrel=1
pkgdesc="Simple-build-tool: A build tool for Scala"
arch=('any')
url="http://code.google.com/p/simple-build-tool/"
license=('New BSD License')
depends=( 'java-runtime' )
source=("http://simple-build-tool.googlecode.com/files/sbt-launch-${pkgver}.jar")
noextract=('sbt-launch-${pkgver}.jar')
md5sums=('0cce0d5ade30a41b91e05705a9346b71')

build() {
  cd $startdir/

  mkdir -p $pkgdir/usr/bin/
  mkdir -p $pkgdir/usr/share/sbt/
  cp $srcdir/sbt-launch-${pkgver}.jar $pkgdir/usr/share/sbt/

  echo "#!/bin/sh" > $pkgdir/usr/bin/sbt
  echo "java -Xmx512m -jar /usr/share/sbt/sbt-launch-${pkgver}.jar  \"\$@\"" >> $pkgdir/usr/bin/sbt
  chmod a+x $pkgdir/usr/bin/sbt
}

