# Contributor: graysky <graysky AT archlinux dot us>
pkgname=modprobed_db
pkgver=2.14
pkgrel=1
pkgdesc='Keeps track of EVERY kernel module that has ever been probed. \
	Useful for those of us who make localmodconfig :)'
arch=('any')
license=('MIT')
depends=('module-init-tools')
optdepends=('sudo')
url="https://wiki.archlinux.org/index.php/Modprobed_db"
source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz")
sha256sums=('04da9e5e959de0efb0e3b6b935079a80b3b0af63fd8bd485d38c3f0fde244e50')
install=readme.install
backup=(etc/modprobed_db.conf)

build() {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
