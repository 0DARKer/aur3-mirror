# Contributor: graysky <graysky AT archlinux dot us>
pkgname=modprobed_db
pkgver=1.5
pkgrel=4
pkgdesc='Keeps track of EVERY kernel module that has ever been probed. Useful for those of us who make localmodconfig :)'
arch=('any')
license=('GPL')
backup=(etc/modprobed_db.conf)
source=($pkgname reload_database $pkgname.conf)
url=http://aur.archlinux.org/packages.php?ID=41689 # :p
install=($pkgname.install)
build() {
  install -D $pkgname "$pkgdir/usr/bin/$pkgname"
  install -D reload_database "$pkgdir/usr/bin/reload_database"
  install -D -m 644 $pkgname.conf "$pkgdir/etc/$pkgname.conf"
}
sha256sums=('eda53c56b8bdb3c14abd742fd736e8821ca2396c3f9603d6775096328624b050'
            '8143f7f53266407f0125281b8a9e10913e7ac45ec84dfaebe5ad737bda79f8d5'
            'ca92acae71e16964a0769e4cf60385c0e4bc9550dc929ece1dbb6863149fb5a4')
