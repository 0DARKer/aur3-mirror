# maintainer Ivan Agarkov ( ivan.agarkov@gmail.com )

pkgname=husky-all
pkgver=1.9
pkgrel=2
pkgdesc="Complete build for Husky Fido Tosser 1.9"
arch=('i686' 'x86_64')
license=('GPL')
url="http://husky.sourceforge.net/hpt.html"
source=('huskymak.cfg' 'http://downloads.sourceforge.net/project/husky/husky/1.9-current/2013.06.26/husky-all-1.9-source-20130626.tgz')
md5sums=('cdc15b66f7e0e999312d4a711cff62b9'
         '806f87d56f9375943dad216b47ad1265')
package() {
    cp -f ../huskymak.cfg "$srcdir/husky/"
# huskylib
    cd "$srcdir/husky/huskylib"
    make && make DESTDIR="$pkgdir" install
# smapi
    cd "$srcdir/husky/smapi"
    make && make DESTDIR="$pkgdir" install
# fidoconf
    cd "$srcdir/husky/fidoconf"
    make && make DESTDIR="$pkgdir" install
# areafix
    cd "$srcdir/husky/areafix"
    make && make DESTDIR="$pkgdir" install
# hpt
    cd "$srcdir/husky/hpt"
    make && make DESTDIR="$pkgdir" install
# htick
    cd "$srcdir/husky/htick"
    make && make DESTDIR="$pkgdir" install
# areastat
    cd "$srcdir/husky/areastat"
    make && make DESTDIR="$pkgdir" install
# bsopack
    cd "$srcdir/husky/bsopack"
    make && make DESTDIR="$pkgdir" install
# fidostat
    cd "$srcdir/husky/fidostat"
    make && make DESTDIR="$pkgdir" install
# mail2pkt
    cd "$srcdir/husky/mail2pkt"
    make && make DESTDIR="$pkgdir" install
# msged
    cd "$srcdir/husky/msged"
    make && make DESTDIR="$pkgdir" install
# pkt2mail
    cd "$srcdir/husky/pkt2mail"
    make && make DESTDIR="$pkgdir" install
# sqpack
    cd "$srcdir/husky/sqpack"
    make && make DESTDIR="$pkgdir" install
}
