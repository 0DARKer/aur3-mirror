# Maintainer: arinlares <arinlares@gmail.com>

pkgname=klystrack
pkgver=1.5.0
pkgrel=1_i386
pkgdesc="A tracker designed to be comparable to AHX or HivelyTracker on the Amiga."
arch=('i686')
url="http://klystrack.googlecode.com"
license=('custom')
groups=('multimedia')
depends=('sdl')
makedepends=('deb2targz')
source=("http://klystrack.googlecode.com/files/${pkgname}_${pkgver}-${pkgrel}.deb")
noextract=("${pkgname}_${pkgver}-${pkgrel}.deb")
provides=("$pkgname")
conflicts=("$pkgname")
md5sums=('b483ddae9bd0d35e20041366757db011')


build() {
	cd $srcdir
	deb2targz ${pkgname}_${pkgver}-${pkgrel}.deb
	tar -zxf ${pkgname}_${pkgver}-${pkgrel}.tar.gz -C $pkgdir
}

