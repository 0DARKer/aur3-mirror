# Contributor: brotheris <brotheris@gmail.com>
# Based on aspell-en

pkgname=aspell-lt
pkgver=1.3
pkgrel=2
pkgdesc="Lithuanian dictionary for aspell"
arch=('i686' 'x86_64')
url="http://files.akl.lt/ispell-lt/"
license=('custom')
depends=('aspell')
source=(http://files.akl.lt/ispell-lt/aspell6-lt-$pkgver.tar.bz2)
md5sums=('89937691e10cadc5104b87a1a3a1451f')
sha1sums=('8a0f1368575a3dd802fbcce7d7f884b22a4a4fe9')

build() {
  cd "$srcdir/aspell6-lt-$pkgver"
  ./configure
  make
}

package() {
  cd "$srcdir/aspell6-lt-$pkgver"
  make DESTDIR="$pkgdir" install

  install -D -m644 Copyright "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

