_npmname=nw-gyp
pkgname=nw-gyp # All lowercase
pkgver=0.7.3
pkgrel=1
pkgdesc="Native addon build tool for node-webkit"
arch=(any)
url="https://github.com/rogerwang/nw-gyp"
license=("MIT")
depends=("nodejs")
optdepends=("node-webkit: webkit runtime environment")
source=( "http://registry.npmjs.org/${_npmname}/-/${_npmname}-${pkgver}.tgz" )
noextract=($_npmname-$pkgver.tgz)
sha256sums=("6e67d591573e86ec7b93bfc2ee2aea52b45ebab76ec88e5f3b6def4c9a6ed1a5")

package() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}

