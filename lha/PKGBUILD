pkgname=lha
pkgver=1.14
pkgrel=3
pkgdesc="lha is a compression and archive utility for LH-7 format archives"
arch=('x86_64' 'i686')
url="http://lha.sourceforge.jp/"
license=('custom')
depends=()
provides=('lha')
source=( 'http://iij.dl.sourceforge.jp/lha/22231/lha-1.14i-ac20050924p1.tar.gz' lha.man.en LICENSE)
md5sums=('9f52430410928ba4390a73a41a36d56f'
         '558fa922133507817137ed4b27764cc8'
         'be11a6fd915099970126b23d683937dd')
build() {
	cd $srcdir/${pkgname}-${pkgver}i-ac20050924p1
	./configure 
	make -j4
	install -D -m755 src/lha $pkgdir/usr/bin/lha
	install -D -m644 man/lha.man $pkgdir/usr/share/man/ja/man1/lha.1
	install -D -m644 $srcdir/lha.man.en $pkgdir/usr/share/man/man1/lha.1
	install -D -m644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${_pkgname}/LICENSE
}
