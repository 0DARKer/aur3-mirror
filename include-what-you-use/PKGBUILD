# Maintainer: Carl Reinke <mindless2112 gmail com>

pkgname=include-what-you-use
pkgver=3.3
pkgrel=1
pkgdesc="A tool for use with clang to analyze #includes in C and C++ source files"
url="http://code.google.com/p/include-what-you-use/"
license=('LLVM Release License')
_gdocsdl='https://doc-00-9o-docs.googleusercontent.com/docs/securesc/ha0ro937gcuc7l7deffksulhg5h7mbp1/ns0odqdhp8p2helihrarlovu6m5n7c07/1387814400000/18138411108955853598/*/0ByBfuBCQcURXQktsT3ZjVmZtWkU?h=16653014193614665626&e=download'
source=($pkgname-$pkgver.tar.gz::"$_gdocsdl")
sha1sums=('f49dd094300b648543e3510ebd8101dbab23056f')
arch=('i686' 'x86_64')
depends=('clang=3.3')
makedepends=('clang=3.3')
optdepends=('python2')

build()
{
  cd $srcdir/$pkgname

  cmake -DLLVM_PATH=/usr/lib -DCMAKE_INSTALL_PREFIX:PATH=/usr .
  make
  sed -i "s|^#!/usr/bin/python$|#!/usr/bin/python2|" fix_includes.py
}

package()
{
  cd $srcdir/$pkgname

  make install DESTDIR=$pkgdir
  install -Dm755 fix_includes.py "${pkgdir}/usr/bin/iwyu-fix_includes.py"
}

