# Maintainer: Jérémie Astor <astor.jeremie@wanadoo.fr>
pkgname=spectrum3d
pkgver=2.2.0
pkgrel=1
pkgdesc="3d spectrum analyser"
arch=(i686 x86_64)
url="http://spectrum3d.sourceforge.net/"
license=('GPL')
depends=('gstreamer0.10-good-plugins>=0.10.31' 'sdl' 'gtk2')
provides=(spectrum3d)
source=('http://downloads.sourceforge.net/project/spectrum3d/spectrum3d-2.2.0.tar.gz?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Fspectrum3d%2Ffiles%2F&ts=1331318943&use_mirror=netcologne')
md5sums=('69d79645ae93f05a894cc8078735812e')
build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --disable-gtk3 --enable-glext
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
