# Contributor: Ross Eldridge <ptepid@ptepid.org>
pkgname=audacious-dumb
pkgver=0.80
pkgrel=1
pkgdesc="Support IT, XM, S3M and MOD audio format for Audacious using DUMB"
url="http://netswarm.net"
arch="x86, x86_64"
depends=('dumb')
license=('GPL')
source=(http://netswarm.net/misc/${pkgname}-${pkgver}.tar.gz)
md5sums=('ad9d5282032a38b73891ea0681029b0d')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make

  # Create directories
  mkdir -p $startdir/pkg/usr/lib/audacious/Input
  cp -f dumb.so $startdir/pkg/usr/lib/audacious/Input
}
