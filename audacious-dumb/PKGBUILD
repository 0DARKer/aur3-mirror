# Contributor: Ross Eldridge <ptepid@ptepid.org>
pkgname=audacious-dumb
pkgver=0.74
pkgrel=2
pkgdesc="Support IT, XM, S3M and MOD audio format for Audacious using DUMB"
url="http://netswarm.net"
arch="x86, x86_64"
depends=('dumb')
license=('GPL')
source=(http://netswarm.net/misc/${pkgname}-${pkgver}.tar.gz audacious3.2.patch)
md5sums=('f8dc4a7ef22d461fee3aae57484c2871' 'a4b61e1ac3ca9e6c58d0e0e0804b7042')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 < $startdir/audacious3.2.patch
  make

  # Create directories
  mkdir -p $startdir/pkg/usr/lib/audacious/Input

  cp -f dumb.so $startdir/pkg/usr/lib/audacious/Input
}
