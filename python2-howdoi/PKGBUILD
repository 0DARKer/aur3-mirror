# Maintainer: Fabien Devaux <fdev31 at gmail dot com>

_pkg="howdoi"

pkgname=python2-$_pkg
pkgver=1.0
pkgrel=2
pkgdesc="Filesystem abstraction"
arch=(any)
url=("https://github.com/gleitz/howdoi")
license=('MIT')
depends=('python2' 'python2-pyquery' 'python2-requests')
source=("http://pypi.python.org/packages/source/h/${_pkg}/${_pkg}-${pkgver}.tar.gz")
md5sums=('0d5240ce03af86cc298b9092e22a2143')

build() {
    cd "$srcdir/$_pkg-$pkgver"
    python2 setup.py build || return 1
    python2 setup.py install --root=$pkgdir --optimize=1 || return 1
}

