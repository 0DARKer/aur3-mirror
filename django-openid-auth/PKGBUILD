# Maintainer: Laszlo Papp <djszapi at archlinux us>
# Maintainer: Apkawa <apkawa@gmail.com>

pkgname=django-openid-auth
pkgver=0.3
pkgrel=2
pkgdesc="OpenID integration for django.contrib.auth"
arch=(any)
url="https://launchpad.net/django-openid-auth"
license=('GPL')
depends=('python2' 'python-openid')
source=("http://launchpad.net/django-openid-auth/trunk/${pkgver}/+download/$pkgname-$pkgver.tar.gz")

build() {
    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py build || return 1
    python2 setup.py install --root=$pkgdir --optimize=1 || return 1
}

md5sums=('b7bc3dc0a7a5793eb993b4c53b7ba897')
