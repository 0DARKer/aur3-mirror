# Contributor: Anton Larionov <diffident dot cat at gmail dot com>
# Contributor: Christoph Zeiler <rabyte*gmail>

pkgname=lifeograph
pkgver=0.11.1
pkgrel=1
pkgdesc="An off-line and private journal and note taking application."
arch=('i686' 'x86_64')
url="https://launchpad.net/lifeograph"
license=('GPL3')
depends=('gtkmm3' 'enchant' 'hicolor-icon-theme' 'desktop-file-utils')
makedepends=('python2')
install="$pkgname.install"
source=("http://launchpad.net/lifeograph/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('e7f92a3e05e7ba3d290aa890bdcbe09a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 waf configure --prefix=/usr
  python2 waf build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 waf install --destdir="$pkgdir/"
}

