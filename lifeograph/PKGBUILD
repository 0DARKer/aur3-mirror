# Maintainer: Anton Larionov <diffident dot cat at gmail dot com>
# Previous versions you can find here: http://codaset.com/diffycat/pkgbuilds

pkgname=lifeograph
pkgver=0.7.2
pkgrel=1
pkgdesc="An off-line and private journal and note taking application."
arch=('i686' 'x86_64')
url="https://launchpad.net/lifeograph"
license=('GPL3')
depends=('gtkmm' 'gtkspell' 'libgcrypt')
source=(http://launchpad.net/lifeograph/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('0d30b416433f881322d1bbe56b92ca4c')

build() {

	cd ${srcdir}/${pkgname}-${pkgver}/
	./waf configure --prefix=${pkgdir}/usr
	./waf build
	./waf install

}

# vim:set ts=2 sw=2 et:
