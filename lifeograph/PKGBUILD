pkgname=lifeograph
pkgver=0.7.3
pkgrel=1
pkgdesc="An off-line and private journal and note taking application."
arch=('i686' 'x86_64')
url="https://launchpad.net/lifeograph"
license=('GPL3')
depends=('gtkmm' 'gtkspell' 'libgcrypt' 'hicolor-icon-theme')
makedepends=('python2')
install="$pkgname.install"
source=("http://launchpad.net/lifeograph/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz"
        "$pkgname-gcc46.patch")
md5sums=('3481d0a290c7d4e27e915b0b076fc937'
         '29bf84f626612a2eacaa58fff4f4aef2')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # gcc 4.6 patch
  patch -p1 -i ../$pkgname-gcc46.patch

  python2 waf configure --prefix=/usr
  python2 waf build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 waf install --destdir="$pkgdir/"
}

