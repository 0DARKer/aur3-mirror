# Maintainer: Peter Lewis <plewis@aur.archlinux.org>
pkgname=awesome-scratchpad-git
pkgver=20110711
pkgrel=1
pkgdesc="Scratchpad functionality for Awesome WM."
arch=(any)
url="http://git.sysphere.org/awesome-configs/tree/scratch"
license=('GPL')
groups=()
depends=('awesome')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot="http://git.sysphere.org/awesome-configs"
_gitname="awesome-configs"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_gitname/scratch"

	install -Dm644 "drop.lua" "$pkgdir/usr/share/awesome/lib/scratch/drop.lua"
	install -Dm644 "init.lua" "$pkgdir/usr/share/awesome/lib/scratch/init.lua"
	install -Dm644 "pad.lua" "$pkgdir/usr/share/awesome/lib/scratch/pad.lua"

} 
