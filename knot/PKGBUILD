# Maintainer: Otto Sabart <seberm[at]gmail[dot]com>

pkgname=knot
pkgver=0.8
pkgrel=1
pkgdesc="high-performance authoritative-only DNS server"
url="http://www.knot-dns.cz/setlang/?language=en"
arch=('i686' 'x86_64')
license=('GPLv3')
depends=('liburcu' 'flex' 'libtool')
optdepends=()
makedepends=('autoconf')
conflicts=()
replaces=()
backup=()
#install='foo.install'
source=("http://public.nic.cz/files/knot-dns/${pkgname}-${pkgver}.tar.gz")

md5sums=('65f05fbbb792ea1bef99a1d2c876d0f2')

build() {
	
	cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure --prefix=${pkgdir} --exec-prefix=${pkgdir}/usr --datarootdir=${pkgdir}/usr/share
	make || return 1
    make install
}
