pkgname=vidyo
pkgver=2.2.1.00417
pkgrel=1
pkgdesc="Desktop client for vidyo conferencing system used at CERN"
url="https://vidyoportal.cern.ch"
license=(commercial)
arch=(i686 x86_64)
makedepends=(rpmextract)
depends=(alsa-lib qt4 libidn)
optdepends=('zenity: Perform checks at start'
            'flashplugin: Join meetings via web browser')

if [ "$CARCH" = "i686" ]; then
    _arch=''
    source=("https://vidyoportal.cern.ch/upload/VidyoDesktopInstaller-sl5-TAG_VD_${pkgver//./_}.rpm")
    md5sums=('e7ba041751a40714664ee54427fc6a1d')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='64'
    source=("https://vidyoportal.cern.ch/upload/VidyoDesktopInstaller-sl564-TAG_VD_${pkgver//./_}.rpm")
    md5sums=('43940f62fc5f8eab6a3fcf219ca0e002')
fi

build() {
  cd $pkgdir
  rpmextract.sh $startdir/VidyoDesktopInstaller-sl5${_arch}-TAG_VD_${pkgver//./_}.rpm
}
