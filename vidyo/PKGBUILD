pkgname=vidyo
pkgver=3.0.3.022
pkgrel=1
pkgdesc="Desktop client for vidyo conferencing system used at CERN"
url="https://vidyoportal.cern.ch"
license=(commercial)
arch=(i686 x86_64)
makedepends=(rpmextract)
depends=(alsa-lib qt4 libidn glu dialog)
optdepends=('zenity: Perform checks at start'
'flashplugin: Join meetings via web browser')

if [ "$CARCH" = "i686" ]; then
rpmfilename="VidyoDesktop-3.0.3-022.i386.rpm"
md5sums=('e8f4e93eddf8b2c36757f2e8e110e83c')
elif [ "$CARCH" = "x86_64" ]; then
rpmfilename="VidyoDesktop-3.0.3-022.x86_64.rpm"
md5sums=('d888b573386ce6e67e39224806491cfb')
fi

source=("http://information-technology.web.cern.ch/sites/information-technology.web.cern.ch/files/${rpmfilename}")

package() {
cd $pkgdir
rpmextract.sh $startdir/${rpmfilename}
}
