pkgname='perl-lingua-en-tagger'
pkgver='0.15'
pkgrel='1'
pkgdesc="Part-of-speech tagger for English natural language processing."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-html-parser>=3.45' 'perl-lingua-stem>=0.81' 'perl-memoize-expirelru>=0.55')
url='http://search.cpan.org/dist/Lingua-EN-Tagger'
source=('http://search.cpan.org/CPAN/authors/id/A/AC/ACOBURN/Lingua-EN-Tagger-0.15.tar.gz')
md5sums=('08ac1e36f3006e47dd9e41e04cd6308a')

build() {
  DIST_DIR="${srcdir}/Lingua-EN-Tagger-0.15"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&make test &&
    make DESTDIR="$pkgdir" install;  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
