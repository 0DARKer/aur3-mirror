# Contributor: Anibal Pacheco <apacheco.uy@gmail.com>
pkgname="scrapy"
pkgver=0.10.3
pkgrel=7
pkgdesc="A fast high-level scraping and web crawling framework."
arch=('i686' 'x86_64')
license=('BSD')
url="http://scrapy.org"
depends=('python2>=2.5' 'twisted>=2.5' 'libxml2>=2.6.28')
optdepends=("pyopenssl: only if you want to crawl secure (HTTPS) pages")
provides=('scrapy')
conflicts=('scrapy-hg')
options=(!emptydirs)
source=('http://scrapy.org/releases/0.10.3/Scrapy-0.10.3.tar.gz')
md5sums=('65edfee811d1dbca08d1759d35f79575')

build() {
  # installation
  cd $srcdir/Scrapy-0.10.3
  python2 setup.py install --root=$pkgdir || return 1

  # copying license information
  install -D -m644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE

  # copying readme information
  install -D -m644 README $pkgdir/usr/share/doc/$pkgname/README
  install -D -m644 INSTALL $pkgdir/usr/share/doc/$pkgname/INSTALL
}
