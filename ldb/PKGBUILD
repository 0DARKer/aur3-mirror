# Maintainer: Marco A Rojas <marquicus at gmail dot com>

pkgname=ldb
pkgver=1.1.0
pkgrel=1
pkgdesc="LDB is a LDAP-like embedded database. It is not at all LDAP standards compliant, used for samba4"
arch=('i686' 'x86_64')
url="http://ldb.samba.org/"
source=(http://samba.org/ftp/$pkgname/$pkgname-$pkgver.tar.gz)
license=('GPLv3')
depends=('talloc' 'tevent')
conflicts=()
provides=()
md5sums=('61145ad9cfe017ce4fca5cbc77b9552b')
_prefix="/opt/samba4"

build() {
  # change to use python2
  sed -i -e "s|/usr/bin/env python$|/usr/bin/env python2|" \
    $(find ${srcdir}/${pkgname}-${pkgver} -name 'waf')

  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=${_prefix}
}

package() {
  _pyver=`python2 -c 'import sys; print(sys.version[:3])'`
  cd ${srcdir}/${pkgname}-${pkgver}
  make
  make DESTDIR=${pkgdir}/ install

  # remove conflict files of tevent
  rm -f ${pkgdir}/${_prefix}/lib/python${_pyver}/site-packages/_tevent.so*

}

