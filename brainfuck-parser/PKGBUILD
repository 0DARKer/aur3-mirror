# Maintairner: Brieuc Roblin <brieuc.roblin at gmail dot com>
pkgname='brainfuck-parser'
pkgver=20101024
pkgrel=2
pkgdesc="Brainfuck interpretor in C"
arch=('i686' 'x86_64')
license=('GPL')
depends=()
makedepend=(gcc git)
url=(http://gitorious.org/brainfuck-parser/brainfuck-parser)

_gitroot="git://gitorious.org/brainfuck-parser/brainfuck-parser.git"
_gitname="brainfuck"

build() {
  cd "$srcdir"

	# Git clone
	msg2 "Connecting to gitorious and pulling"
	if [ -d $_gitname ] ; then
		( cd $_gitname && git pull )
	else
		git clone $_gitroot $_gitname || return 1
	fi

	cd "$_gitname"

  # Compiling
  msg2 "Starting make..."
  make || return 1
	  
	# Installing
	msg2 "Installing..."
	DESTDIR="$pkgdir"/usr make install || return 1
}
