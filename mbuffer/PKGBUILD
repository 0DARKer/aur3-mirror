# Contributor: Tim Karreman <tim@karreman.net>
pkgname=mbuffer
pkgver=20110119
pkgrel=1
pkgdesc="a tool for buffering data streams"
arch=(i686 x86_64)
url="http://www.maier-komor.de/mbuffer.html"
license=('GPL')
depends=(openssl)
source=(http://www.maier-komor.de/software/mbuffer/$pkgname-$pkgver.tgz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  make "DESTDIR=$pkgdir" install
}
md5sums=('bde5cfbaed55145f78a2b84b78d10476')
sha1sums=('572b30460d4015e2394cb5c67d8f3d0bfd0a089e')
