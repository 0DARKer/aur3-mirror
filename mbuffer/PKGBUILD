# Contributor: Tim Karreman <tim@karreman.net>
pkgname=mbuffer
pkgver=20110724
pkgrel=1
pkgdesc="a tool for buffering data streams"
arch=(i686 x86_64)
url="http://www.maier-komor.de/mbuffer.html"
license=('GPL')
depends=(openssl)
source=(http://www.maier-komor.de/software/mbuffer/$pkgname-$pkgver.tgz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  make "DESTDIR=$pkgdir" install
}
md5sums=('fc183b787f33011b42c9814029c69054')
sha1sums=('1cdd01920320b14d7ad9b4cc6d3c96a2da000345')
