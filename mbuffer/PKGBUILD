# Contributor: Tim Karreman <tim@karreman.net>
pkgname=mbuffer
pkgver=20110317
pkgrel=1
pkgdesc="a tool for buffering data streams"
arch=(i686 x86_64)
url="http://www.maier-komor.de/mbuffer.html"
license=('GPL')
depends=(openssl)
source=(http://www.maier-komor.de/software/mbuffer/$pkgname-$pkgver.tgz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  make "DESTDIR=$pkgdir" install
}
md5sums=('84e9743f955e048d3b1e95e1b2e18e58')
sha1sums=('726a51f80850a0c3e443a5b0469c18cfe06d8c36')
