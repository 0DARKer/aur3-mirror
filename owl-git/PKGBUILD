# Maintainer: baskerville <baskerville at lavabit dot com>

pkgname=owl-git
pkgver=20120220
pkgrel=2
pkgdesc="A pacman and cower wrapper focused on simplicity"
arch=('any')
url="https://github.com/baskerville/owl"
license=('BSD')
depends=('cower' 'sudo')
makedepends=('git')
provides=('owl')
conflicts=('owl')
_gitroot='git://github.com/baskerville/owl.git'
_gitname='owl'

build() {
    cd "$srcdir"
    if [[ -d "$_gitname" ]] ; then
        cd "$_gitname" && git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi
}

package() {
    cd "$srcdir"
    install -D -m755 "$_gitname/owl" "$pkgdir/usr/bin/owl"
    install -D -m644 "$_gitname/bash_completion.d/owl" "$pkgdir/etc/bash_completion.d/owl"
    install -D -m644 "$_gitname/manual/owl.8" "$pkgdir/usr/share/man/man8/owl.8"
}
