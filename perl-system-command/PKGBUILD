pkgver='1.108'
pkgrel='1'
pkgdesc="Object for running system commands"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-ipc-run' 'perl')
makedepends=()
url='http://search.mcpan.org/dist/System-Command'
source=('http://search.mcpan.org/CPAN/authors/id/B/BO/BOOK/System-Command-1.108.tar.gz')
md5sums=('fdb1382d51cf73d092d543810da510d3')
sha512sums=('6c7b7b79faf90e5b351ed5cfb81dad8e2e873a5b729aaac1f535b67b55895ceaee9166ebfadf837de87365dc8322503f8f870b19d9e27a0fdd4a1d56991a5434')
_distdir="System-Command-1.108"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

