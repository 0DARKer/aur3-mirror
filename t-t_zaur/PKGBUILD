# Contributor: T-T

pkgname='t-t_zaur'
pkgver='1.0'
pkgrel=0
pkgdesc="Extract, make and install package from AUR in terminal"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/zaur/files/"
license=('BSD')
depends=(bash terminal pacman)
makedepends=()
conflicts=()
optdepends=()

source=("https://downloads.sourceforge.net/project/zaur/$pkgver/mksrc" "https://downloads.sourceforge.net/project/zaur/$pkgver/mkpkg" "https://downloads.sourceforge.net/project/zaur/$pkgver/zaur")
md5sums=(8f8ab614d9fde807bf937c7924c3fc71 f605adb2e82ab22711d3cd5098ff5c23 9a98f82f72496a4366b776d49c23c3c8)

build() {
	cd $srcdir/
	
	mkdir $pkgdir/usr
	mkdir $pkgdir/usr/bin
	
	mv $srcdir/mksrc $pkgdir/usr/bin/mksrc
	mv $srcdir/mkpkg $pkgdir/usr/bin/mkpkg
	mv $srcdir/zaur $pkgdir/usr/bin/zaur
}
