pkgname='perl-perl-version'
pkgver='1.009'
pkgrel='1'
pkgdesc="Parse and manipulate Perl version strings"
arch=('any')
url='http://search.cpan.org/dist/Perl-Version'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/A/AN/ANDYA/Perl-Version-1.009.tar.gz')
md5sums=('d54af4a652a7a3bc4b97aae3ff44104d')

build() {
  DIST_DIR="${srcdir}/Perl-Version-1.009"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

