pkgname=pacmind
pkgver=0.0.1
pkgrel=2
arch=('any')
pkgdesc="a gtkdialog frontend gui for the package manager, inspired to yaourt-gui"
url="http://www.xfce-italia.it"
license=('GPL')
depends=('gtkdialog' 'zenity' 'yaourt' 'xterm' 'pkgbrowser' 'sudo')
optdepends=('yaourt-gui')
source=("http://dl.dropbox.com/u/7054815/packages/arch/pacmind_0.0.1.tar.gz")
md5sums=('db623e442bf302d7b88ef47d61858d4e')

build() {
  tar xzf pacmind_0.0.1.tar.gz -C $startdir/pkg
}
