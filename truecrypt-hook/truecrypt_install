#!/bin/bash

build() {
    add_module fuse
    
    add_binary "truecrypt"
    add_binary "fusermount"
    
    # truecrypts directory
    add_dir "/dev/mapper"
    add_dir "/tmp"

    add_runscript
}

help () {
cat<<HELPEOF
  This hook allows for a truecrypt encrypted root device.
HELPEOF
}

# vim: set ft=sh ts=4 sw=4 et:
