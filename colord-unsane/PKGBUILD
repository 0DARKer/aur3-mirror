# Contributor: Ionut Biru <ibiru@archlinux.org>

pkgname=colord-unsane
realname=colord
pkgver=0.1.16
pkgrel=2
pkgdesc="Color daemon without sane dependency"
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/software/colord"
license=('GPL2')
depends=('lcms2' 'libgusb' 'polkit' 'shared-color-profiles' 'sqlite3' 'udev')
makedepends=('intltool' 'gobject-introspection' 'vala' 'docbook2x')
source=($url/releases/$realname-$pkgver.tar.xz)
options=('!libtool')
sha1sums=('bd2fbad0043d2c1f55ab7ff8cb5e261b684e699c')
provides=('colord')
conflicts=('colord' 'colord-nopolkit')

build() {
  cd "$srcdir/$realname-$pkgver"
  ./configure --prefix=/usr \
    --sysconfdir=/etc --libexecdir=/usr/lib/colord \
    --localstatedir=/var --disable-static \
    --with-systemdsystemunitdir=/lib/systemd/system
  make
}

package() {
  cd "$srcdir/$realname-$pkgver"
  make DESTDIR="$pkgdir" install
}

