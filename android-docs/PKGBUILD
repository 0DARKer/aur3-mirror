# Maintainer: Figo.zhang <figo1802@gmail.com>

pkgname=android-docs
pkgver=3.0
pkgrel=1
pkgdesc='API docs for Google Android SDK 3.0'
arch=('any')
url="http://developer.android.com/sdk/index.html"
license=('custom')
depends=('android-sdk')
_sdk=android-sdk
_tools="opt/${_sdk}/tools"
_ptools="opt/${_sdk}/platform-tools"

source=("http://dl-ssl.google.com/android/repository/docs-3.0_r01-linux.zip")

md5sums=('bd8176946ff089c009f873570010b6b0')

package() {
  cd "$pkgdir"
  mkdir -p opt/$_sdk
  cp -a "$srcdir/docs" $pkgdir/opt/$_sdk/docs

}
