# Maintainer: Figo.zhang <figo1802@gmail.com>

pkgname=android-docs
pkgver=3.2
pkgrel=1
pkgdesc='API docs for Google Android SDK'
arch=('any')
url="http://developer.android.com/sdk/index.html"
license=('custom')
depends=('android-sdk')
_sdk=android-sdk
_tools="opt/${_sdk}/tools"
_ptools="opt/${_sdk}/platform-tools"

source=("http://dl-ssl.google.com/android/repository/docs-${pkgver}_r01-linux.zip")

md5sums=('d6889907c3bf6beba2123fbeefed3a97')

package() {
  cd "$pkgdir"
  mkdir -p opt/$_sdk
  cp -a "$srcdir/docs_r01-linux/" $pkgdir/opt/$_sdk/docs

}
