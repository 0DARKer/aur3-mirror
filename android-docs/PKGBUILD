# Maintainer: Figo.zhang <figo1802@gmail.com>

pkgname=android-docs
pkgver=3.1
pkgrel=1
pkgdesc='API docs for Google Android SDK 3.1'
arch=('any')
url="http://developer.android.com/sdk/index.html"
license=('custom')
depends=('android-sdk')
_sdk=android-sdk
_tools="opt/${_sdk}/tools"
_ptools="opt/${_sdk}/platform-tools"

source=("http://dl-ssl.google.com/android/repository/docs-3.1_r01-linux.zip")

md5sums=('a8137733fda9760e04f2d6964c7ce75f')

package() {
  cd "$pkgdir"
  mkdir -p opt/$_sdk
  cp -a "$srcdir/docs-3.1_r01-linux/" $pkgdir/opt/$_sdk/docs

}
