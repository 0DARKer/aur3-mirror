# Maintainer: xduugu
pkgname=perl-log-dispatch
pkgver=2.26
pkgrel=1
pkgdesc="Log messages to multiple outputs"
arch=('any')
url="http://search.cpan.org/dist/Log-Dispatch/"
license=('GPL' 'PerlArtistic')
depends=('perl-params-validate>=0.15')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Log-Dispatch-$pkgver.tar.gz) 
md5sums=('d15559297f7c73a311ede78f97174d2a')
sha256sums=('7a5ea7b423fd1815ace727347ddd64189056e263a147bf7ef1531d36396388ff')

build() {
  cd  "$srcdir/Log-Dispatch-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR="$pkgdir" || return 1

  find "$pkgdir" -name '.packlist' -delete
  find "$pkgdir" -name '*.pod' -delete
}
