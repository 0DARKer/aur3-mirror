# Packager: aurperl@juster.us

pkgname=perl-log-dispatch
pkgver=2.29
pkgrel=1
pkgdesc="Dispatches messages to one or more outputs"
arch=(any)
license=(PerlArtistic GPL)
options=(!emptydirs)
depends=('perl-params-validate>=0.15')
url=https://metacpan.org/release/Log-Dispatch
source=("http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Log-Dispatch-${pkgver}.tar.gz")
md5sums=(781a4b5a9db2b617d2487dadecf65081)
sha512sums=(b31af3ba08de5413105c4aa9f54f387327425e34a3174cb76c8073ffdc6c4f504e60c52c66ac03450a565ef28e57425be0c22c0216d7fbcb29afb0968fb95a54)
_distdir="${srcdir}/Log-Dispatch-${pkgver}"

build()
(
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
)

check()
(
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    cd "$_distdir"
    make test
)

package() {
    cd "$_distdir"
    make DESTDIR="$pkgdir" install
    find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
