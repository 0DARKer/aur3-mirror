# Contributor: Davorin Uƒçakar <davorin.ucakar@gmail.com>
pkgname=xcursor-openzone
pkgver=1.1.3
pkgrel=1
pkgdesc="OpenZone X11 cursor theme"
url="http://opendesktop.org/content/show.php/OpenZone?content=111343"
arch=('any')
license=('custom:xcursor-openzone')
source=("http://opendesktop.org/CONTENT/content-files/111343-OpenZone-${pkgver}.tar.bz2")
sha1sums=('b54818fda42165c4a490ad885990eabc63bfe42a')

build() {
  install -D -d -m755 ${pkgdir}/usr/share/icons
  for theme in Black White Ice; do
    tar jxf ${srcdir}/OpenZone/OpenZone_${theme}-${pkgver}.tar.bz2 -C ${pkgdir}/usr/share/icons
  done
  install -D -m644 ${srcdir}/OpenZone/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
