pkgname=isostick-updater
pkgver=62
pkgrel=1
pkgdesc="Updating your isostick's firmware"
arch=(x86_64)
url='http://reboot.pro/17228/'
license=('custom')
depends=('lib32-bzip2'
         'lib32-expat'
         'lib32-fontconfig'
         'lib32-freetype2'
         'lib32-gcc-libs'
         'lib32-glib2'
         'lib32-glibc'
         'lib32-libffi'
         'lib32-libice'
         'lib32-libsm'
         'lib32-libx11'
         'lib32-libxau'
         'lib32-libxcb'
         'lib32-libxdmcp'
         'lib32-libxext'
         'lib32-libxrender'
         'lib32-pcre'
         'lib32-util-linux'
         'lib32-zlib')
source=("http://isostick.com/updater/$pkgname.tar.gz")
md5sums=('088a8b4fb98e367b1b438d996d07725d')

package() {
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

