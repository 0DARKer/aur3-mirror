# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=netlink-notify
pkgver=0.2.0
pkgrel=1
pkgdesc="Notify about netlink changes"
arch=('i686' 'x86_64')
url="http://www.eworm.de/"
depends=('libnotify' 'libmnl')
license=('GPL')
source=("${pkgname}.c" "${pkgname}.desktop")
    
build() {
  cd ${srcdir}/
  gcc `pkg-config --cflags --libs libnotify` `pkg-config --cflags --libs libmnl` ${pkgname}.c -o ${pkgname}
  install -D -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -D -m644 ${pkgname}.desktop ${pkgdir}/etc/xdg/autostart/${pkgname}.desktop
}

# vim:set ts=2 sw=2 et:
md5sums=('35dc368435199c6ab861f0ccb36424ac'
         '551e5751f9cff866c1f2902541cfe9d9')
