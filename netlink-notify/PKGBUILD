# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=netlink-notify
pkgver=0.6.3
pkgrel=1
pkgdesc="Notify about netlink changes"
arch=('i686' 'x86_64')
url="https://github.com/eworm-de/netlink-notify"
depends=('libnotify')
makedepends=('imagemagick' 'markdown')
license=('GPL')
install=netlink-notify.install
source=("http://www.eworm.de/download/linux/${pkgname}-${pkgver}.tar.xz"{,.asc})

build() {
	cd ${pkgname}-${pkgver}/

	make
}

package() {
	cd ${pkgname}-${pkgver}/

	make DESTDIR="${pkgdir}" install
}

sha256sums=('61ddc0e7c585ff5b5527ea6d1468817b005834d5ea0c2cb92f8dabc922950293'
            'SKIP')
