pkgname=eclipse-linuxtools
pkgver=0.9.0
pkgrel=1
pkgdesc="Eclipse Linux Tools Project"
url="http://www.eclipse.org/linuxtools"
arch=('any')
license=('EPL')
depends=('eclipse-cdt')
makedepends=('unzip')
source=("http://download.eclipse.org/technology/linuxtools/linuxtools-${pkgver:0:3}-incubation.zip")
md5sums=('52e35041a0c55bac9d1c14c28635facd')

build() {

  _dest=${pkgdir}/usr/share/eclipse/dropins/${pkgname#eclipse-}
  _src=${srcdir}/update-${pkgver:0:3}

  cd ${_src}

  install -dm755 ${_dest}/
  find features plugins -type f -name '*.jar' | while read jar ; do
    install -dm755 ${_dest}/${jar%*.jar}
    cd ${_dest}/${jar/.jar}
    jar xf ${_src}/${jar}
  done
}
