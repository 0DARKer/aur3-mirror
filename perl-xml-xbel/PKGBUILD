#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-xml-xbel'
_pkgname='XML-XBEL'
pkgver='1.4'
pkgrel='1'
pkgdesc="OOP for reading and writing XBEL documents."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-xml-libxml' 'perl-timedate')
url='http://search.cpan.org/dist/XML-XBEL/'
source=(http://search.cpan.org/CPAN/authors/id/A/AS/ASCOPE/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('94c489f49fdb561fc96d9f76f9cf40892f44831628bfbc86b916bbe0ed356a89')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  [ "$skiptest" = "1" ] || make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
