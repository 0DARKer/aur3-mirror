# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=(synthclone)
pkgver=0.0.4
pkgrel=2
pkgdesc="SynthClone is a GTK-based application that works with the JACK Audio Connection Kit to "clone" your MIDI-capable instruments."
arch=('i686' 'x86_64')
url="http://code.google.com/p/synthclone/"
license=('GPL')
depends=('gtkmm' 'jack' 'phat' 'glib2')
makedepends=('scons')
source=(http://synthclone.googlecode.com/files/$pkgname-$pkgver.tar.gz)
install=$pkgname.install
md5sums=('a9ca5cdd46a2c0afff3c3833391f70a0')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  sed '2074 s_\(label1\)_\13_' -i data/synthclone.ui || return 1
  scons prefix=/usr || return 1

  mkdir -p $pkgdir/usr/{bin,share/{$pkgname,applications}} || return 1

  install -Dm755 $pkgname $pkgdir/usr/bin || return 1
  install -Dm644 data/$pkgname.desktop $pkgdir/usr/share/applications || return 1
  install -Dm644 data/$pkgname.ui $pkgdir/usr/share/$pkgname || return 1
}

