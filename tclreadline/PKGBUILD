# Maintainer: Arthur Danskin <arthurdanskin@gmail.com>

pkgname=tclreadline
pkgver=2.1.0
pkgrel=6
pkgdesc="Makes the GNU readline available for tcl shells."
url="http://tclreadline.sourceforge.net"
license="BSD"
depends=(tcl readline)
makedepends=(gcc)
arch=(i686 x86_64)
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz threads.patch)
md5sums=('219d0247a1373578080940ebde53bdd0' '80fedcebddbba5cf6a1bf810454e123f')
options=('nolibtool')
install=tclreadline.install

build() {
  cd $startdir/src/$pkgname-$pkgver
  cp ../threads.patch .
  patch -p0 < threads.patch
  ./configure --prefix=/usr 
  make || return 1
  make DESTDIR=$startdir/pkg install
}
