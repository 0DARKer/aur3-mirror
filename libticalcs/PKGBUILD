pkgname=libticalcs
pkgver=1.1.5
pkgrel=1
pkgdesc="TI Calculator library"
arch=(i686 x86_64)
url="http://tilp.info"
license="GPL"
depends=('libticables' 'libtifiles')
options=('force' '!libtool')
source=(http://lpg.ticalc.org/prj_tilp/download/libticalcs2-1.1.5.tar.bz2)

build() {
    cd ${pkgname}2-${pkgver}
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=$startdir/pkg install
}
md5sums=('4caae7510974b0c9687c68c24836e084')
