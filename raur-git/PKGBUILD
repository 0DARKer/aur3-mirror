# Maintainer: Boohbah <boohbah at gmail.com> 

pkgname=raur-git
_gitname=raur
pkgver=d5aaa16
pkgrel=1
pkgdesc="A simple AUR helper in Ruby"
arch=('any')
url="https://github.com/Boohbah/raur"
license=('GPL')
depends=('pacman' 'ruby' 'ruby-minitar')
optdepends=('sudo: package installation support')
makedepends=('git')
conflicts=('raur')
provides=('raur')
source=('git://github.com/Boohbah/raur')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's/-/./g'
}

package() {
  cd $_gitname
  install -Dm755 raur.rb "$pkgdir/usr/bin/raur"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/raur/LICENSE"
}
