# Maintainer: Glen Oakley <goakley123@gmail.com>

pkgname=twine-git
pkgrel=1
pkgver=20140125
pkgdesc="Twine is an open-source tool for telling interactive, nonlinear stories."
arch=(any)
url="http://twinery.org/"
license=('GPL')
groups=()
depends=('python2' 'wxpython')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
noextract=()

_gitroot=git://github.com/tweecode/twine.git
_gitname=Twine

pkgver () {
  cd "$srcdir/$_gitname"
  git describe --always | sed 's/-/./g'
}

build() {
  echo "$pkgdir"
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/$_gitname"
}

package() {
  mkdir -p "$pkgdir/opt/"
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  cp -r "$srcdir/$_gitname" "$pkgdir/opt/twine"
  rm -rf "$pkgdir/opt/twine-git/.git"
  echo -e '#!/bin/bash\ncd /opt/twine && python2 app.py' > "$pkgdir/usr/bin/twine"
  chmod +x "$pkgdir/usr/bin/twine"
  echo -e '#!/bin/bash\ncd /opt/twine && python2 twee' > "$pkgdir/usr/bin/twee"
  chmod +x "$pkgdir/usr/bin/twee"
  cp "$srcdir/$_gitname/gpl.txt" "$pkgdir/usr/share/licenses/LICENSE"
}

# vim:set ts=2 sw=2 et:
