pkgname=tpacpi-bat
pkgver=1.0
pkgrel=5
pkgdesc="A Perl script with ACPI calls for recent ThinkPads (such as T420 and W520) whose battery thresholds are not supported by tp_smapi"
url="https://github.com/teleshoes/tpacpi-bat"
arch=('x86_64' 'i686')
license=('GPL3')
depends=('perl' 'acpi_call-git')
source=(https://github.com/teleshoes/${pkgname}/archive/v1.0.tar.gz
        https://github.com/teleshoes/tpacpi-bat/raw/master/tpacpi.service)
md5sums=('ea51fd3df269b7b3701d3ce6637f15f0'
         '52a12fa585bfe0cb07d3bc4323b34856')

package() {
  install -Dm322 "$srcdir/${pkgname}-${pkgver}/${pkgname}" "$pkgdir/usr/bin/${pkgname}"
  install -Dm644 "$srcdir/tpacpi.service" "$pkgdir/usr/lib/systemd/system/${pkgname}.service"
}
