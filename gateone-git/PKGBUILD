# Maintainer: Ankz <ankz . kothari at gmail.com>
# Contributor: Figue <ffigue at gmail.com>
pkgname=gateone-git
pkgver=20130220
pkgrel=1
pkgdesc="Web-based terminal emulator and SSH client"
arch=('i686' 'x86_64')
url="https://github.com/liftoff/GateOne"
license=('GPL')
depends=('python2' 'python2-tornado')
optdepends=('python2-openssl' 'dtach')
makedepends=('git')

_gitroot="https://github.com/liftoff/GateOne.git"
_gitname="GateOne"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."
  if [ -d "$srcdir/$_gitname" ] ; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot"
  fi
  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/$_gitname"

  python2 setup.py build
}

package() {
  cd "$srcdir/$_gitname"

  python2 setup.py install --root="$pkgdir/"

  install -D ./scripts/init/gateone.service "$pkgdir/usr/lib/systemd/system/gateone.service"

  # Patching for Python 2.7
  cd "$pkgdir/opt/gateone"
  sed -e 's/env python/env python2/g' -i gateone.py
}
