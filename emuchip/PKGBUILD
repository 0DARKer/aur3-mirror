# Maintainer: Boris Timofeev <mashin87@gmail.com>
pkgname=emuchip
pkgver=0.1
pkgrel=1
pkgdesc="CHIP-8 emulator"
arch=('i686' 'x86_64')
url="http://code.google.com/p/emuchip/"
license=('GPL3')
depends=('sdl' 'qt')
makedepends=()
install=
source=("http://emuchip.googlecode.com/files/${pkgname}_v${pkgver}_src.tar.gz" "emuchip.desktop")
md5sums=('a432457d6a8d675a7dbbcf8c6d3b9302'
         '97069af099d6c6e0a221ebf911968c27')

build() {
  cd $srcdir/${pkgname}_v${pkgver}_src
  qmake
  make
  
  rm -rf ./build/*
  make -f Makefile.emuchip-sdl
}

package() {
  cd ${srcdir}/${pkgname}_v${pkgver}_src
  install -Dm755 ./bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -Dm755 ./bin/${pkgname}-sdl ${pkgdir}/usr/bin/${pkgname}-sdl
  install -Dm644 ${srcdir}/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
  install -Dm644 ./README ${pkgdir}/usr/share/doc/${pkgname}/README
}
