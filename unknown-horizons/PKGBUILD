# Contributor: Ronan Rabouin <darkbaboon@gmail.com>

pkgname=unknown-horizons
pkgver=2010.1
pkgrel=1
pkgdesc="A 2D realtime strategy simulation with an emphasis on economy and city building"
arch=('i686' 'x86_64')
url="http://unknown-horizons.org/"
license=('GPL' 'CCPL')
depends=('python'  'python-yaml' 'fife' 'python-distultils-extra')

conflicts=('unknown-horizons-svn' 'unknown-horizons-git' 'openanno')
source=('http://sourceforge.net/projects/unknownhorizons/files/Unknown%20Horizons/2010.1/unknown_horizons_2010_1_source.tar.gz')
md5sums=('4440d2698b6edbcf9d65a0a3c97b8720')

build() {
  msg "Starting make..."
  cd $srcdir/UnknownHorizons-2010.1
  python setup.py install --home=$pkgdir/usr --optimize=1 || return 1
  mkdir -p $pkgdir/usr/lib/python2.6/site-packages/
  mv $pkgdir/usr/lib/python/* $pkgdir/usr/lib/python2.6/site-packages/
  rm -rf $pkgdir/usr/lib/python 
}
