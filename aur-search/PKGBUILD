# Maintainer: Kovivchak Evgen <oneonfire@gmail.com>

pkgname=aur-search
pkgver=0.4
pkgrel=1
pkgdesc="Search packages in AUR"
arch=('i686' 'x86_64')
license=('GPL3')
url="http://code.google.com/p/mimarchlinux/"
depends=('pacman' 'glib2')
source=(http://mimarchlinux.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('a8a44bf45921c711464f4c864b443525')

build() {
  cd ${srcdir}/${pkgname}
  make || return 1
  install -m755 -D aur-search $pkgdir/usr/bin/aur-search
  install -m644 -D COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}
