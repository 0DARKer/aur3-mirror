# Contributor: Sven-Hendrik Haase <sh@lutzhaase.com>

pkgname=caudio
pkgver=2.2.0
pkgrel=1
pkgdesc="Advanced C++ wrapper around OpenAL"
arch=(i686 x86_64)
url=https://github.com/wildicv/cAudio
license=(zlib)
depends=(openal)
source=($url/archive/v2.2.0.zip)
sha256sums=('e906de0a022d5118aa6bd5ebcb343b31bba6c51c55c691050f667d8f5cca5d89')
sha512sums=('6f024aa3abb011d41815b9bac77373329043d82c53c5b2bd8d1fb3657cfc556d76ecbfc2a82c5367000dbb545d8faac740a14a0cf7e3186927bda6378d57b72a')

build() {
    cd "$srcdir"/cAudio-$pkgver/
    cmake . -DCMAKE_INSTALL_PREFIX=/usr
    make
}

package() {
    make -C cAudio-$pkgver DESTDIR="$pkgdir" install
}
