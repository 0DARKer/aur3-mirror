# Maintainer: Valentin V. Bartenev <i@vbart.ru>

pkgname=django-debug-toolbar
pkgver=0.8.4
pkgrel=1
pkgdesc="A configurable set of panels that display various debug information about the current request/response."
arch=(any)
url="http://robhudson.github.com/django-debug-toolbar/"
license=('custom:BSD')
depends=('python' 'django')
source=(${pkgname}-${pkgver}.tar.gz::https://github.com/robhudson/django-debug-toolbar/tarball/${pkgver})
md5sums=('9f7ede006406d73503d411e2892c77cc')
_subdir=robhudson-django-debug-toolbar-6149915

build() {
    cd $srcdir/$_subdir
    python2 setup.py install --root=$pkgdir/ -O1 || return 1
    install -D -m0644 LICENSE $pkgdir/usr/share/licenses/${pkgname}/LICENSE
}

# Enjoy! ;)