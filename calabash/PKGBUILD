# Contributor: Leif Warner <abimelech@gmail.com>
pkgname=calabash
pkgver=0.9.21
pkgrel=1
pkgdesc="An implementation of the XProc XML Pipeline Lanuage"
arch=('any')
url="http://xmlcalabash.com/"
license=('GPL' 'CDDL')
depends=('saxon')
optdepends=('java-commons-httpclient: p:http-request step'
            'jing: p:validate-with-relax-ng or cx:nvdl'
            'java-tagsoup: parse text/html in p:unescape-markup step')

source=(http://xmlcalabash.com/download/$pkgname-$pkgver.zip calabash.sh)

build() {
  install -d $pkgdir/usr/share/java/calabash
  install -m644  $srcdir/$pkgname-$pkgver/lib/calabash.jar $pkgdir/usr/share/java/$pkgname || return 1
  install -D -m755 $srcdir/calabash.sh $pkgdir/usr/bin/calabash || return 1
}

# vim:set ts=2 sw=2 et:
md5sums=('c1a2ddefdb97e4a515b49418f08ce9b7'
         'a080d23ad3927c32429a3c0ecb48f2c5')
