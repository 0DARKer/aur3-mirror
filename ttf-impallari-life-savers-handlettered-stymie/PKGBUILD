# Maintainer: Marcos Heredia <chelqo@gmail.com>

_font="life-savers-handlettered-stymie"
_group="impallari"
_update=84
pkgname=ttf-${_group}-${_font}
pkgver=2.001
pkgrel=1
pkgdesc="1950's Life Savers Handlettered Stymie, from Pablo Impallari"
arch=(any)
url="http://www.impallari.com/projects/overview/life-savers-handlettered-stymie"
screenshot="http://www.impallari.com/media/uploads/profotos/81-foto01-original.jpg"
license=('custom:OFL')
groups=("${_group}-fonts")
depends=('fontconfig' 'xorg-font-utils')
install=updatefont.install
source=("http://www.impallari.com/media/uploads/prosources/update-${_update}-source.zip")
md5sums=('330c8427247bc1688c728e30c1d95408')

package() {
  cd ${srcdir}/L*

  install -dm755 "${pkgdir}/usr/share/fonts/TTF/${_group}"
  install -Dpm644 *.ttf "${pkgdir}/usr/share/fonts/TTF/${_group}"

  install -dm755 "${pkgdir}/usr/share/licenses/${pkgname}/"
  install -Dpm644 OFL.txt "${pkgdir}/usr/share/licenses/${pkgname}/"

  install -dm755 "${pkgdir}/usr/share/doc/${pkgname}/"
  install -Dpm644 FONTLOG.txt "${pkgdir}/usr/share/doc/${pkgname}/"
}
