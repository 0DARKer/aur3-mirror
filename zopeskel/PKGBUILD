# Maintainer: cwchen <linuxisfun0104@gmail.com>

pkgname=zopeskel
_pkgname=ZopeSkel
pkgver=2.16
pkgrel=1
pkgdesc="A collection of skeletons for quickstarting Zope projects"
arch=('i686' 'x86_64')
url="http://plone.org/products/zopeskel"
license=('MIT')
depends=('python24')
source=(http://plone.org/products/${pkgname}/releases/${pkgver}/${_pkgname}-${pkgver}.zip)


build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
  python2.4 setup.py install --root=${pkgdir} || return 1
  install -m644 ${srcdir}/${_pkgname}-${pkgver}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}
}

md5sums=('67414b673efd9898581a23f178921219')
