
pkgname=slimboat
pkgver=1.1.7
pkgrel=1
pkgdesc="Fast,free secure and powerful web browser based on QtWebkit."
arch=('i686' 'x86_64')
url="https://opendesktop.org/content/show.php/SlimBoat+Web+Browser?content=154834#"
license=('Freeware')
depends=('libstdc++5' 'openssl>=0.9' 'zlib>=1.1.4' 'lib32-libjpeg6>=6b1')
conflicts=('')

if [ "${CARCH}" = 'x86_64' ]; then
  ARCH='amd64'
  md5sums=('7b5650492ba7915ede7eff3af39a0628')

elif [ "${CARCH}" = 'i686' ]; then
  ARCH='i386'
  md5sums=('5cdca6d2b350b8d518303e4efd44c60e')
fi
  source=(http://www.slimbeacon.com/slimboat/release/${pkgname}_${ARCH}.deb)

package() {
  ar -x "${srcdir}/${pkgname}_${ARCH}.deb"
  tar -zxf "${srcdir}/data.tar.gz"
  cp -r "${srcdir}/usr/" "${pkgdir}"
  cp -r "${srcdir}/opt/" "${pkgdir}"
}
