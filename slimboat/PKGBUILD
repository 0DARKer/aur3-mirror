
pkgname=slimboat
pkgver=1.1.31
pkgrel=1
pkgdesc="Fast,free secure and powerful web browser based on QtWebkit."
arch=('i686' 'x86_64')
url="http://www.slimboat.com/en/dlpage.php"
license=('Freeware')
depends=('libstdc++5' 'openssl>=0.9' 'zlib>=1.1.4' 'libjpeg6-turbo')
conflicts=('')
install="${pkgname}.install"

if [ "${CARCH}" = 'x86_64' ]; then
  ARCH='amd64'
  md5sums=('a46ab0b6eeee8cb735c374afb27dd089')

elif [ "${CARCH}" = 'i686' ]; then
  ARCH='i386'
  md5sums=('b34bc9f88ff38bb419ec29d094b1fe67')
fi
  source=(http://www.slimbeacon.com/slimboat/release/${pkgname}_${ARCH}.deb)

package() {
  ar -x "${srcdir}/${pkgname}_${ARCH}.deb"
  tar -zxf "${srcdir}/data.tar.gz"
  cp -r "${srcdir}/usr/" "${pkgdir}"
  cp -r "${srcdir}/opt/" "${pkgdir}"
}
