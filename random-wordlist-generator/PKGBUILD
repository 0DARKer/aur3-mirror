# Maintainer: hbdee <hbdee.arch@gmail.com>

pkgname=random-wordlist-generator
pkgver=0.1
pkgrel=1
pkgdesc="Simple tool to generate random words using different sets of characters."
arch=('i686' 'x86_64')
url=("http://random-wordlist-generator.sourceforge.net")
license=('GPL3')
depends=('qt4')
if test "$CARCH" == x86_64; then
  depends+=('gcc-libs-multilib')
fi
makedepends=('cmake')
source=("http://sourceforge.net/projects/random-wordlist-generator/files/Random%20Wordlist%20Generator/0.1/RandomWordlistGenerator-0.1.tar.bz2")
md5sums=('8f7404664e70ee0e40a3b61db7005ff7')

prepare() {
  if [[ -d build ]]
  then
    rm -rf build
  fi
    mkdir build
  sed -i 's;Other;Utility;g' RandomWordlistGenerator-0.1/res/randomwordlistgenerator.desktop
}

build() {
  cd build
  cmake ../RandomWordlistGenerator-0.1 \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
