# Committer: Judd Vinet <jvinet@zeroflux.org>

pkgname=gdsl
pkgver=1.4pl1
pkgrel=1
pkgdesc="A collection of routines for generic data structures manipulation"
arch=('i686' 'x86_64')
url="http://home.gna.org/gdsl/"
license=('GPL')
depends=('glibc')
options=('!libtool')
source=(http://download.gna.org/gdsl/$pkgname-${pkgver/p/-p}.tar.gz)
md5sums=('fb7f8d33845563f7eb2e75021fa7841f')

build() {
  cd "$srcdir"/$pkgname-${pkgver/p/-p}
  ./configure \
    --prefix=/usr \
    --mandir=/usr/share/man || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
  rm -f "$pkgdir"/usr/share/doc/$pkgname/{AUTHORS,COPYING,NEWS,THANKS,TODO}
}
