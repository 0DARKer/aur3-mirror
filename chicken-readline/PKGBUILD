# Maintainer: Simon Lemay <contact+archlinux@simonlemay.net>
# Contributor: Jim Pryor <profjim@jimpryor.net>

pkgname=chicken-readline
_pkgname=readline
pkgver=1.993
pkgrel=1
pkgdesc='Chicken Scheme Egg: A binding for the GNU readline library'
arch=('i686' 'x86_64')
url='http://wiki.call-cc.org/eggref/4/readline'
license=('GPL')
depends=('chicken>=4.5.0')

build() {
    cd "$srcdir"
    if [[ ! -e "$_pkgname" ]]; then
        chicken-install -r "$_pkgname"
    fi
}

package() {
    cd "$srcdir/$_pkgname"
    chicken-install -p "$pkgdir/usr"
}
