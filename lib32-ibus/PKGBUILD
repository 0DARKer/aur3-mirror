pkgname=lib32-ibus
pkgver=1.4.1
pkgrel=2
pkgdesc="Next Generation Input Bus for Linux (32-bit libraries)"
arch=(x86_64)
license=(LGPL)
url="http://ibus.googlecode.com"
depends=(lib32-dbus-glib lib32-gtk2 ibus)
install=ibus.install
source=("ftp://ftp.archlinux.org/community/os/i686/ibus-$pkgver-$pkgrel-i686.pkg.tar.xz")
sha256sums=('6bf4c69e0787077397d7b6e5ad24a13b49a80facd56e372d1ef8aa5e0e36d6cf')
sha512sums=('103c71b14cef8fa7188a880dd003ca114b1083a9c9a9c9073621da39579a3858e7ca8fef18b9993c93244745093c1e5ed9b7e0eecf32cbd1c2e50a40672efa98')
options=(!libtool)

package() {
    install -d $pkgdir/usr/lib32/
    mv usr/lib/* $pkgdir/usr/lib32/
}
