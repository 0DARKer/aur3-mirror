# Contributor: coderoar <coderoar at gmail.com>

pkgname=lib32-ibus
pkgver=20081115
pkgrel=1
pkgdesc="Next Generation Input Bus for Linux"
arch=('x86_64')
license=('LGPL')
url="http://ibus.googlecode.com"
depends=('lib32-dbus-glib' 'ibus')
install=ibus.install
md5sums=('')
_sourcefile="`ls|grep 'ibus-.*-i686\.pkg\.tar\.gz'`"
source=($_sourcefile)
build() {
    cd ${srcdir}
	# say goodbye to .la files:
	find . -name '*.la' -exec rm {} \;
	mkdir -p ${pkgdir}/opt/lib32/
	cp -a usr/ ${pkgdir}/opt/lib32/
	rm -fr ${pkgdir}/opt/lib32/usr/{bin/,lib/python2.6/,share/}
}
