# Maintainer: SpepS <dreamspepser at yahoo dot it>

_pkg=Kivy
pkgname=kivy
pkgver=1.0.9
pkgrel=1
pkgdesc="A python module for developing multi-touch enabled media rich applications."
arch=(i686 x86_64)
url="http://kivy.org/"
license=('LGPL')
depends=('python-pygame' 'python-opengl' 'gstreamer0.10-python' 'python-imaging' 'cython2' 'mtdev')
source=("http://pypi.python.org/packages/source/K/$_pkg/$_pkg-$pkgver.tar.gz")
md5sums=('02c799cba91fdd664539ab1319df3b85')

build() {
  cd "$srcdir/$_pkg-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/$_pkg-$pkgver"

  python2 setup.py install --root="$pkgdir"

  # python2 fixes
  sed -i "s/\#\!.*python/&2/" `grep -rl "\#\!.*python" "$pkgdir"`
}

# vim:set ts=2 sw=2 et:
