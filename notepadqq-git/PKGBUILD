# Maintainer: Justin Kinnaird <teklad@gmx.com> 

pkgname=notepadqq-git
_gitname=notepadqq
pkgver=20130615
pkgrel=1
pkgdesc="A Notepad++ clone. Development version."
arch=('i686' 'x86_64')
url="https://github.com/notepadqq/notepadqq"
license=('GPLv3')
depends=('qscintilla' 'qt4' 'dconf')
makedepends=('git')
conflicts=('notepadqq')
provides=('notepadqq')
source=('git+https://github.com/notepadqq/notepadqq.git#branch=master')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  # Use the tag of the last commit
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $_gitname/src
  qmake-qt4 notepadqq.pro -r -spec linux-g++
  make
  make clean
}

package() {
  cd $_gitname/src
  make PREFIX=/usr DESTDIR="$pkgdir" INSTALL_ROOT="$pkgdir" install
}
