# Contributor: aggaZ <aggaz@paranoici.org>

pkgname=diylc_beta
pkgver=2
pkgrel=2
arch=('i686' 'x86_64')
pkgdesc="PCB, Perfboard and Stripboard drawing utility."
depends=('java-runtime')
makedepends=('unzip')
url="http://diy-fever.com/index.php?project=software"
license=('unknow')
source=(http://diy-fever.com/diylc/diylc_beta.zip)
md5sums=('277f432fde6f3b571a5d4a8676374a79')

build() {
  mkdir -p $pkgdir/usr/share
  cp -R $srcdir/$pkgname $pkgdir/usr/share/
  
  mkdir -p $pkgdir/usr/bin
  cat <<EOF > ${pkgdir}/usr/bin/diylc
#!/bin/bash
cd /usr/share/diylc_beta
java -jar DIYLC.jar
EOF
  chmod 755 ${pkgdir}/usr/bin/diylc
}

