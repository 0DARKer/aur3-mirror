pkgname=xjump
pkgver=2.7.5 
pkgrel=2
pkgdesc="A jumping game for X. Very simple, yet very addictive"
arch=(i686)
url="http://www.foo.org"
groups=
provides=
depends=('libxaw' 'glibc')
makedepends=('libxaw')
install=('xjump.install')
source=(http://ftp.debian.org/debian/pool/main/x/xjump/xjump_$pkgver.orig.tar.gz http://www.d.kth.se/~blame/pkg/xjump/Makefile)
md5sums=('3e8d09c6b8162b7e4380f8a77eb595dc' 'c11d2487f06d702ff34028b609d33a6d')

build() {
  tar -xzf $pkgname_$pkgver.orig.tar.gz
  mv $startdir/src/Makefile $startdir/src/$pkgname-$pkgver.orig
  cd $startdir/src/$pkgname-$pkgver.orig

#  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
  mkdir /usr/share/xjump
  touch /usr/share/xjump/record
  chmod +w /usr/share/xjump/record
}
