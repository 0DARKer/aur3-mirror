# Contributor: cromo <dawid@klej.net>
pkgname=poster 
pkgver=20060221 
pkgrel=2
pkgdesc="Scales or tiles a postscript image to print on multiple pages" 
arch=(i686 x86_64) 
url="http://printing.kde.org/downloads/" 
license=('GPL') 
source=(ftp://ftp.kde.org/pub/kde/printing/$pkgname.tar.bz2) 
md5sums=('04b421e2ce516a44b6c5a9a092dfa623') 

build() { 
cd $startdir/src/$pkgname-$pkgver 
make || return 1 
install -D -m755 $pkgname $startdir/pkg/usr/bin/$pkgname 
install -D -m644 $pkgname.1 $startdir/pkg/usr/share/man/man1/$pkgname.1 
}
