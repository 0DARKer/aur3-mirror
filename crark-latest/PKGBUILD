# Modified: Gustavo Alvarez <sl1pkn07 [at] gmail [dot] com>

pkgname=crark-latest
name=crark
pkgver=3.3
download=crark33-linux-nocuda.rar
pkgrel=3
pkgdesc="A command-line utility for RAR 2.x-3.x password cracking, uses Password Cracking Library 2.0 that supports special password recovery language. Highly optimized for all modern processors."
arch=('i686' 'x86_64')
url="http://www.crark.net/"
license="unknown"
depends=('bash' 'unrar')
source=('http://www.crark.net/download/crark33-linux-nocuda.rar' 'crark.sh' 'crark-hp.sh')
md5sums=('e8daa3f6af541f612d67c65dfcc751c7'
         'b79e986a59cb358067ee33c08c1a213c'
         '84880ab0b75c8572642991cd265fc30f')
# "_lang=" options: "english", "spanish" or "russian"
_lang=english
build() {
  
  mkdir -p ${pkgname}-${pkgver}
  unrar x -xcrackme ${download} ${startdir}/src/${pkgname}-${pkgver}
  cd ${startdir}/src/${pkgname}-${pkgver}
  
 
  mkdir -p ${startdir}/pkg/usr/share/${name}
  mkdir -p ${startdir}/pkg/usr/bin

  cp * ${startdir}/pkg/usr/share/${name}
  cp ${startdir}/src/*.sh ${startdir}/pkg/usr/share/${name}
  ln -sv ${_lang}.def ${startdir}/pkg/usr/share/${name}/password.def
  mv ${startdir}/pkg/usr/share/${name}/${name}.sh ${startdir}/pkg/usr/bin/${name}
  mv ${startdir}/pkg/usr/share/${name}/${name}-hp.sh ${startdir}/pkg/usr/bin/${name}-hp

  chmod a+r ${startdir}/pkg/usr/share/${name}/*.def
  chmod +x ${startdir}/pkg/usr/bin/${name}*

}
