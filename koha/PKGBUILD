# PKGBUILD by yhager@yhager.com

pkgname=koha
pkgver=3.02.05
pkgrel=1
pkgdesc='Integrated Library System'
arch=('any')
url='http://koha-community.org'
license=('GPL2')
source=("http://download.koha-community.org/${pkgname}-${pkgver}.tar.gz")
md5sums=('921b18976f8457a624d7e6b729b7092f')
backup=('etc/koha/koha-conf.xml' 'etc/koha/koha-httpd.conf')

depends=('perl>=5.8' 'mysql>=5' 'idzebra>=2.0.22' 'apache>=2' 'perl-algorithm-checkdigits>=0.5' 'perl-authen-cas-client>=0.05' 'perl-biblio-endnotestyle>=0.05' 'perl-business-isbn>=2.05' 'perl-cgi-session>=4.2' 'perl-cgi-session-serialize-yaml>=4.2' 'perl-class-accessor>=0.3' 'perl-class-factory-util>=1.6' 'perl-dbd-sqlite2>=0.33' 'perl-dbd-mysql>=4.004' 'perl-data-ical>=0.13' 'perl-date-calc>=5.4' 'perl-date-ical>=1.72' 'perl-date-manip>=5.44' 'perl-datetime>=0.51' 'perl-email-date>=1.103' 'perl-gd>=2.39' 'perl-gd-barcode>=1.1' 'graphicsmagick>=1.3.5' 'perl-html-scrubber>=0.08' 'perl-html-template-pro>=0.69' 'perl-http-oai>=3.2' 'perl-json>=2.07' 'perl-ldap>=0.33' 'perl-lingua-stem>=0.82' 'perl-lingua-stem-snowball>=0.952' 'perl-list-moreutils>=0.21' 'perl-locale-currency-format>=1.28' 'perl-locale-po>=0.17' 'perl-mail-sendmail>=0.79' 'perl-marc-charset>=0.98' 'perl-marc-crosswalk-dublincore>=0.02' 'perl-marc-xml>=0.88' 'perl-memoize-memcached>=0.03' 'perl-mime-lite>=3' 'perl-net-server>=0.97' 'perl-net-z3950-zoom>=1.160' 'perl-number-format>=1.52' 'perl-pdf-api2>=0.73' 'perl-pdf-api2-simple>=1' 'perl-pdf-reuse>=0.33' 'perl-pdf-reuse-barcode>=0.05' 'perl-pdf-table>=0.9.3' 'perl-poe>=0.9999' 'perl-schedule-at>=1.06' 'perl-sms-send>=0.05' 'perl-text-csv>=0.01' 'perl-text-csv-encoded>=0.09' 'perl-text-csv-xs>=0.32' 'perl-text-iconv>=1.7' 'perl-universal-require>=0.13' 'perl-xml-dumper>=0.81' 'perl-xml-libxml>=1.59' 'perl-xml-libxslt>=1.59' 'perl-xml-rss>=1.31' 'perl-xml-sax>=0.96' 'perl-xml-sax-writer>=0.44' 'perl-yaml>=0.71' 'perl-yaml-syck>=0.71')
makedepends=('perl-extutils-makemaker')
install=${pkgname}.install

build() {
  
  cd ${srcdir}/${pkgname}-${pkgver//\.0/\.}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR="${pkgdir}" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

  # copy some documents
  DOC_DIR="${pkgdir}/usr/share/doc/${pkgname}-${pkgver//\.0/\.}"
  mkdir -p $DOC_DIR
  cp README* INSTALL LICENSE $DOC_DIR/
}
