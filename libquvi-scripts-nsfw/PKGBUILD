pkgname=libquvi-scripts-nsfw
_real_pkgname=libquvi-scripts
pkgver=0.4.4
pkgrel=2
pkgdesc='Library for parsing video download links. Scripts for nsfw sites included.'
arch=('any')
url='http://quvi.sourceforge.net/'
license=('LGPL')
depends=('curl' 'lua')
provides=('libquvi-scripts=0.4.4')
conflicts=('libquvi-scripts')
options=('!libtool')
source=("http://downloads.sourceforge.net/sourceforge/quvi/${_real_pkgname}-${pkgver}.tar.gz"{,.sig})
md5sums=('0f028351bc564232706b81ccbff6886f'
         'e13de7ff0554c3d5bd6ec5fca402ff8b')

build() {
  cd "${_real_pkgname}-${pkgver}"

  ./configure --prefix=/usr --with-nsfw
  make
}

package() {
  cd "${_real_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
