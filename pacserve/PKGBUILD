pkgname=pacserve
pkgver=2012.3
pkgrel=1
pkgdesc='Easily share Pacman packages. A replacement for PkgD.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pacserve"
depends=(python2 python-xynehttpserver)
source=(
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.3.tar.xz
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.3.tar.xz.sig
)
sha512sums=(
  dd185e448521daa3c7df79e448398da4e6f4eb29ba3129949efa145b8a95e2f8fb377ee508f53ae77568f9d1a375bd10c3989240c29b7502c6b97a22300b67dc
  3af10faef749329f8c289ce185a6ed132acd6c2ee40edaf4180e983be744e0c241cbafcd7ceb1d703c6d384825ba5370dcf92a03e699790efb1dadf26c4a4cf4
