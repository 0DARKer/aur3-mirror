#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacserve
pkgver=2012.5
pkgrel=2
pkgdesc='Easily share Pacman packages. A replacement for PkgD.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pacserve"
depends=(python2 python-xynehttpserver)
source=(
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.5.tar.xz
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.5.tar.xz.sig
)
sha512sums=(
  34ea135abbca6410c7a38656d347bf656285d11351b073ff5b0929605073013d69f751e15bd2badfcdf62cd989c5dc9ab1cc4758d47c2ed3f518cb7c63396933
  2d4979c6f2a9cb8130184a0dfb004e51054de1567de36b7cb14c44f4257ca00c319938dfc2f3dd7324382b1898af864732254a9354568be763c8eb180eb753e9
)
md5sums=(
  9002821c749f0a14d161607e2f96f115
  fcb13ffce6a373e6b85bd138315005dc
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -D -m644 "$srcdir/$pkgname-$pkgver/$pkgname.service" "$pkgdir/usr/lib/systemd/system/$pkgname.service"
}


