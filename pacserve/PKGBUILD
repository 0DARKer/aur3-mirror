#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacserve
pkgver=2012.11.26
pkgrel=1
pkgdesc='Easily share Pacman packages between computers. A replacement for PkgD.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pacserve"
depends=(python2 python-xynehttpserver)
backup=(etc/conf.d/pacserved)
source=(
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.11.26.tar.xz
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.11.26.tar.xz.sig
)
sha512sums=(
  df1e9f597ae5c1e7b0a61556039d51bc7c6a7a8498af83bc3aafd63187cb64a09ad905bae1dda9af86aa6396abcc1344bd7778992b965f99736511c81fc9732f
  2c72577e6c8c4a141180a2e07b55a1f4a96ad4f63e46fe59e18b77a1b0d8fc1e1f28a6dee2c51aa919942507d8eff3c96d8dc3d2cb7b9bba4c2fecb0e423c8bd
)
md5sums=(
  1951eb1195b5d9002ca4a7fc198499b3
  08c55585554f663f5e70908c5105f0aa
)
install=pacserve.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 "$pkgname-ports" "$pkgdir/usr/bin/$pkgname-ports"
  install -Dm755 "pacsrv" "$pkgdir/usr/bin/pacsrv"

  install -Dm755 "pacman.conf-insert_pacserve" "$pkgdir/usr/bin/pacman.conf-insert_pacserve"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 "${pkgname}d" "$pkgdir/etc/rc.d/${pkgname}d"
  install -Dm755 "${pkgname}d.conf" "$pkgdir/etc/conf.d/${pkgname}d"
  install -Dm644 "man/${pkgname}d.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}d.1.gz"

  for service_ in *.service
  do
    install -Dm644 "$service_" "$pkgdir/usr/lib/systemd/system/$service_"
  done
}

