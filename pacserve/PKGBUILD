#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacserve
pkgver=2012.7.29
pkgrel=1
pkgdesc='Easily share Pacman packages between computers. A replacement for PkgD.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pacserve"
depends=(python2 python-xynehttpserver)
backup=(etc/conf.d/pacserved)
source=(
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.7.29.tar.xz
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.7.29.tar.xz.sig
)
sha512sums=(
  90727b95cab07c4eaaea45b118de7821f0171c6d09d9f2441b1414698c1a4705aae04d5c1e97dd0405764ff63fbd0c15f0877de7124cc0b9a0481dc46ecf2bfc
  48837b3fee8e1444d7d848120b996a301eb24142f6209a955dfc0d8f1696ab7bdb25546e925850488ef1f27464a7a5032a6ca7a392db31fe3ae2fa3c1f26d731
)
md5sums=(
  430af02f68abd13d0c38d20d34f4736e
  fed0f5244b9f74c62f8fd58d8ee52c23
)
install=pacserve.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 "pacsrv" "$pkgdir/usr/bin/pacsrv"
  install -Dm755 "pacman.conf-insert_pacserve" "$pkgdir/usr/bin/pacman.conf-insert_pacserve"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 "${pkgname}d" "$pkgdir/etc/rc.d/${pkgname}d"
  install -Dm755 "${pkgname}d.conf" "$pkgdir/etc/conf.d/${pkgname}d"
  install -Dm644 "$pkgname.service" "$pkgdir/usr/lib/systemd/system/$pkgname.service"
  install -Dm644 "man/${pkgname}d.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}d.1.gz"
}

