#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacserve
pkgver=2012.11.27
pkgrel=1
pkgdesc='Easily share Pacman packages between computers. A replacement for PkgD.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pacserve"
depends=(python2 python-xynehttpserver)
backup=(etc/conf.d/pacserve)
source=(
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.11.27.tar.xz
  http://xyne.archlinux.ca/projects/pacserve/archives/pacserve-2012.11.27.tar.xz.sig
)
sha512sums=(
  68db1cd15ee0da63fd9ccbe21e0830cea16576743c839587303df03d423e98201fdc7e6452f06670d27c0f8a7898080bbe95a7ef6cf545783dfcca0bdf56526b
  13e7428f3b9c8e01b920cf4ca01f7961c37b089c7eb6994761f10351b843ea56cc1ce65246619ddbd9528ea8a69eac374c368479e9620b8073cb19955af5bf39
)
md5sums=(
  131da25396859e313ec9edc7882ac92a
  f18930a6992ee9847642ab2635587730
)
install=pacserve.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 "conf.d/${pkgname}" "$pkgdir/etc/conf.d/${pkgname}"

  # rc.d daemon, to be removed when Arch fully drops support for it
  install -Dm755 "rc.d/${pkgname}d" "$pkgdir/etc/rc.d/${pkgname}d"

  for bin_ in bin/*
  do
    install -Dm755 "$bin_" "$pkgdir/usr/bin/$bin_"
  done

  for service_ in systemd/*.service
  do
    install -Dm644 "$service_" "$pkgdir/usr/lib/systemd/system/$service_"
  done

  for man_ in man/*
  do
    install -Dm644 "$man_" "$pkgdir/usr/share/man/man1/$man_"
  done
}

