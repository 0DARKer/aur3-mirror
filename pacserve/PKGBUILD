#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacserve
pkgver=2011.04.24.2
pkgrel=1
pkgdesc="Easily share Pacman packages. A replacement for PkgD."
depends=('python2' 'python-xynehttpserver')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('0de5c463446eedb6e7837790a59a4f4f')

build() {
  install -D -m755 "$srcdir/$pkgname/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
