md5sums=(
  4945a98cc1487d03c747880b76015dfd
  beee13d2da9cdaf1e20a464d1c75be80
)

build () 
{ 
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname.service" "$pkgdir/lib/systemd/$pkgname.service"
}


