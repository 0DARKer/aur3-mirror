# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=cloud
pkgver=2.4.5
pkgrel=3
pkgdesc="Client-side module to connect to the PiCloud servers"
arch=(any)
url="http://www.picloud.com/"
license=('LGPL')
depends=('python2')
makedepends=('python2-distribute')
options=(!emptydirs)
source=(http://s3.amazonaws.com/cloud_download/cloud-$pkgver.tar.gz
        setup.py.patch)
md5sums=('537081973bcb57dd7302f8458007d8bf'
         '3429a8ccdd1ed6e2931c9073dcb563d3')

build() {
  cd "$srcdir"/${pkgname}-$pkgver
  patch -p0 < ../setup.py.patch
  python2 setup.py install --root="$pkgdir"/ --optimize=1
  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
         -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
    $(find "${pkgdir}" -name '*.py')
}

