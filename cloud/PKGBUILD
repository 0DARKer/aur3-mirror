# Contributor: giniu <gginiu@gmail.com>
pkgname=cloud
pkgver=2.3.8
pkgrel=1
pkgdesc="Cloud is the client-side module to connect to the PiCloud servers, simple cloud computing solution with Python."
arch=(any)
url="http://www.picloud.com/"
license=('LGPL')
depends=('python2')
makedepends=('setuptools')
optdepends=('pyopenssl')
options=(!emptydirs)
source=(http://s3.amazonaws.com/cloud_download/cloud-$pkgver.tar.gz)
md5sums=('d2f6565b5111861023fce7f26289f7b5')

build() {
  cd "$srcdir"/${pkgname}-$pkgver
  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

