# Contributor: mokasin <mok4sin at gmail dot com>

# Doesn't use dropin directory because it doesn't work
pkgname=eclipse-qt-eclipse-integration-bin
pkgver=1.6.1
pkgrel=2
pkgdesc="official binaries of the Qt Eclipse plugin"
arch=('i686' 'x86_64')
url="http://qt.nokia.com/developer/eclipse-integration"
license=('L GPL')
depends=('qt>=4.6.1' 'eclipse' 'eclipse-cdt')
install=eclipse-qt-eclipse-integration-bin.install

md5sums=('3bf27fca4dd9051071f4bbf8ff761655')

_architect='x86'
[ "$CARCH" = "x86_64" ] && _architect='x86_64'
[ "$CARCH" = "x86_64" ] && md5sums[0]='3b5ad955dd84608de07331509b4ddffb'

source=(
http://get.qt.nokia.com/qteclipse/qt-eclipse-integration-linux.\
${_architect}-${pkgver}.tar.gz)

build() {

mkdir -p "${pkgdir}/usr/share/" || return 1
cd "${pkgdir}/usr/share/"

tar xzf "${srcdir}/qt-eclipse-integration-linux.${_architect}-${pkgver}.tar.gz" ||
    return 1
}
