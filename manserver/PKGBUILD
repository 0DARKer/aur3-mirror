# Contributor: ConnorBehan <connor.behan@gmail.com>
pkgname=manserver
pkgver=107
pkgrel=6
pkgdesc="Man to HTML converter which can act as an HTTP server on port 8888"
arch=('i686' 'x86_64')
url="http://www.squarebox.co.uk/users/rolf/download/manServer.shtml"
license=('custom')
depends=('perl')
optdeps=('gzip: extraction' 'bzip2: extraction')
source=(http://www.squarebox.co.uk/download/manServer_$pkgver.pl
	manServer manserver manpath.config)
md5sums=('8eb963a37b3d31ead04ae85dca96d181'
         '651770a52cd70a3c04aa69da0c93d88f'
         '6bc451bd812fec0703d9ea7f792761a3'
         '715455f372831b1d95133a6a54311c20')   

build() {
	install -Dm755 $startdir/src/manServer_$pkgver.pl ${startdir}/pkg/usr/bin/manServer
	install -Dm755 $startdir/src/manServer ${startdir}/pkg/usr/bin/manserver
	install -Dm755 $startdir/src/manserver ${startdir}/pkg/etc/rc.d/manserver
	install -Dm644 $startdir/manpath.config ${startdir}/pkg/etc/manpath.config
}
