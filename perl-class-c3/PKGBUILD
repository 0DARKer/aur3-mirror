# CPAN Name  : Class-C3
# Submitter  : aCiD2
# Maintainer : SIGTERM

pkgname='perl-class-c3'
pkgver='0.25'
pkgrel='1'
pkgdesc="A pragma to use the C3 method resolution order algorithm"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-algorithm-c3>=0.07')
makedepends=()
url='http://search.cpan.org/dist/Class-C3'
source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSTROUT/Class-C3-0.25.tar.gz')
md5sums=('0fa29f69ac69b9ae573e42925fcfc0bd')
sha512sums=('6c61f85d60869173d726f05debc018575118b4856065ce17fad82d56c279f76b3a68ec9d3286648834833fe696dae27f38f96813767c9a51a43f84355805175c')
_distdir="Class-C3-0.25"

build() {
  cd "$srcdir/Class-C3-0.25"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/Class-C3-0.25"
  PERL_MM_USE_DEFAULT=1
  make test
}

package() {
  cd "$srcdir/Class-C3-0.25"
  make install DESTDIR="$pkgdir"
  find "$pkgdir" -name '.packlist' -o -name '*.pod' -delete
}
