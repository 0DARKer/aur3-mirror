pkgname='perl-class-c3'
pkgver='0.23'
pkgrel='1'
pkgdesc="A pragma to use the C3 method resolution order algortihm"
arch=('any')
url='http://search.cpan.org/dist/Class-C3'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/Class-C3-0.23.tar.gz')
md5sums=('5b997841af85a5f8ed8add7120d56611')

build() {
  DIST_DIR="${srcdir}/Class-C3-0.23"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

