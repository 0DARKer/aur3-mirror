# Maintainer: Czipperz <czipperz@gmail.com>
pkgname=linuxmasterrace
pkgver=1.0
pkgrel=1
pkgdesc="Adds the 'Arch is the best' wiki page into your /usr/share/arch/ folder"
url="https://wiki.archlinux.org/index.php/Arch_is_the_best"
arch=('any')
makedepends=('curl')
conflicts=()
backup=()
sources=()

package() {
	cd "$srcdir"
	curl -L $url > archIsTheBest.html
	mkdir -p "$pkgdir"/usr/share/arch
	install -m755 -T "$srcdir"/archIsTheBest.html "$pkgdir"/usr/share/arch/archIsTheBest.html
}
