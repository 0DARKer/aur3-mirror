# Maintainer: Mike Swanson <mikeonthecomputer@gmail.com>

pkgname=zit-git
pkgver=30.g6e0f057
pkgrel=1
pkgdesc="Use Git to track single files, like RCS"
arch=('any')
url="http://git.oblomov.eu/zit"
license=('none')
depends=('git')
source=(git://git.oblomov.eu/zit)
md5sums=('SKIP')

pkgver() {
  cd ${pkgname/-git/}
  local rev_count=$(git rev-list --count HEAD)
  local head_commit=$(git log -1 --pretty=format:%h)
  echo ${rev_count}.g${head_commit}
}

package() {
  cd ${pkgname/-git/}

  install -dm 755 "${pkgdir}"/usr/bin
  install -m 755 zit "${pkgdir}"/usr/bin
}

# vim:set ts=2 sw=2 et:
