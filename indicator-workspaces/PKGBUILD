# Contributor Madek <gonzaloseguel@gmail.com>

pkgname=indicator-workspaces
pkgver=0.5
pkgrel=1
arch=('any')
pkgdesc="Mail checker for indicator"
url="https://launchpad.net/indicator-workspaces"
license=('GPL')
depends=('indicator-messages' 'python-appindicator')
makedepends=('libtool' 'intltool' 'deb2targz')
replaces=()
conflicts=()
provides=()
source=(https://launchpad.net/~geod/+archive/ppa-geod/+build/2008960/+files/indicator-workspaces_0.5_all.deb)
md5sums=('b4a61de98b5fbbbc0029d2f742510aeb')

build() {
deb2targz indicator-workspaces_0.5_all.deb
tar xzf indicator-workspaces_0.5_all.tar.gz
find . -name indicator-workspaces -exec sed -i 's/python/python2/g' {} \;
cp -r usr/ ${pkgdir}/usr
}
