# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-timesheet
_pkgname=trytond_timesheet
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The timesheet module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-company>=3.2' 'trytond-company-work-time>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("f8f2d36e4f6362b6241dca604d43fd17")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}