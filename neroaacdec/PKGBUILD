pkgname=neroaacdec
pkgver=1.5.4
_pkgver=1.5.1
pkgrel=2
pkgdesc="Nero AAC reference quality MPEG-4 and 3GPP audio codec"
url="http://www.nero.com"
if [ "${CARCH}" = 'i686' ]; then
	depends=('gcc-libs')
elif [ "${CARCH}" = 'x86_64' ]; then
	depends=('gcc-libs-multilib')
fi
license=("custom")
source=(http://ftp6.nero.com/tools/NeroAACCodec-${_pkgver}.zip)
arch=('i686' 'x86_64')

build() {
cd ${srcdir}/linux
install -D -m755 neroAacDec ${pkgdir}/usr/bin/neroAacDec
install -D -m644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/neroaacdec/LICENSE
}
md5sums=('150ead71fb7838c52a31098c85b91211')
