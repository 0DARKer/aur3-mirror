_gemname=rake
pkgname=ruby-enterprise-$_gemname
pkgver=0.9.2.2
pkgrel=1
pkgdesc="A Make-like program implemented in Ruby"
arch=('i686' 'x86_64')
url="http://rubygems.org/gems/rake"
license=('MIT')
depends=('ruby-enterprise')
makedepends=('ruby-enterprise')
source=(http://rubygems.org/gems/$_gemname-$pkgver.gem
        ruby-enterprise-rake.install)
install=ruby-enterprise-rake.install
noextract=($_gemname-$pkgver.gem)
md5sums=('28e731d5c59dd721d6387f80b25a2ba1'
         'd9e0f15cfe65a87108d4a0f80f67d029')

build() {
  cd $srcdir
  local _gemdir=`ruby -rubygems -e'puts Gem.default_dir'`
  gem install --ignore-dependencies --no-rdoc --no-ri -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
