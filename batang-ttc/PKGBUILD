#Contributor : Ashen

pkgname=batang-ttc
pkgver=1.0
pkgrel=2
depends=('fontconfig' 'xorg-font-utils')
license=('GPL')
url=('https://github.com/Ashen91/batang-ttc')
pkgdesc="Korean Default Batang Font"
arch=('i686' 'x86_64')
source=(https://github.com/Ashen91/batang-ttc/blob/master/$pkgname.tar.gz)
md5sums=('f220c3a82944b019cd36ec7f7217fe42')
install=$pkgname.install

package() {
  install -d "$pkgdir/usr/share/fonts/TTF"
  cp -dpr --no-preserve=ownership "$srcdir/$pkgname/"*.ttc "$pkgdir/usr/share/fonts/TTF/"
}

