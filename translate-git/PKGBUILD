_pkgname=translate
pkgname=translate-git
pkgver=20130405
pkgrel=2
pkgdesc="Google Translator command line interface."
arch=('i686' 'x86_64')
url="https://github.com/Narrat/translate.git"
license=('GPL')
depends=('python')
makedepends=('git')
source=('git://github.com/Narrat/translate.git#branch=master')
md5sums=('SKIP')


pkgver() {
	cd $_pkgname
	git log -1 --date=short | grep -Eo '[[:digit:]]{1,4}\-[[:digit:]]{1,2}\-[[:digit:]]{1,2}' | sed -e 's#-##g'
	#git describe | sed 's/^v//;s/-/./g'
}

package() {
  cd "$srcdir/$_pkgname"
  make PREFIX="$pkgdir/usr" install
}
