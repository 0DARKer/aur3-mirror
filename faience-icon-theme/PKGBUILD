# Contributor: Sander Deryckere  <sanderd17 AT gmail DOT com>
# Maintainer: Ner0

pkgname=faience-icon-theme
pkgver=0.5
pkgrel=2
pkgdesc="An icon theme based on Faenza"
url="http://tiheum.deviantart.com/art/Faience-icon-theme-255099649"
license=('GPL3')
arch=('any')
depends=('faenza-icon-theme')
provides=('gnome-icon-theme')
options=('!strip')
source=("http://dl.dropbox.com/u/9966975/${pkgname}_${pkgver}.zip")
md5sums=('cff30b6f81d7ed7e94cd8805e3b3c36f')

package() {

  install -dm755 "$pkgdir/usr/share/icons/"

  for i in Faience*tar.gz; do
    tar --no-same-owner -xzf "$i" -C "$pkgdir/usr/share/icons/"
  done

  # Fix the system-shutdown-symbolic.svg symlink (thanks to dapolinario)
  ln -fs /usr/share/icons/Faenza/actions/scalable/system-shutdown-symbolic.svg \
  "$pkgdir/usr/share/icons/Faience/actions/scalable/system-shutdown-symbolic.svg"
}
