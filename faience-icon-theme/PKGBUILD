# Maintainer: Alois Nespor <info@aloisnespor.info>

pkgname=faience-icon-theme
pkgver=0.2
pkgrel=1
pkgdesc="Icon theme for GNOME 3/GNOME Shell."
url="http://tiheum.deviantart.com/art/Faience-icon-theme-255099649"
license=('GPL3')
arch=('any')
depends=('faenza-icon-theme')
makedepends=('unzip')
options=(!strip)
source=("http://www.deviantart.com/download/255099649/faience_icon_theme_by_tiheum-d47vo5d.zip")
sha256sums=('8fe74d5665d8362b73764289a457e22a6dd39f79ad9106be04cc98b9fc6f6c0a')

package() {

  mkdir -p "${pkgdir}/usr/share/icons/"

  tar -xzvf ${srcdir}/Faience.tar.gz -C ${pkgdir}/usr/share/icons
  tar -xzvf ${srcdir}/Faience-Azur.tar.gz -C ${pkgdir}/usr/share/icons
  tar -xzvf ${srcdir}/Faience-Claire.tar.gz -C ${pkgdir}/usr/share/icons
  tar -xzvf ${srcdir}/Faience-Ocre.tar.gz -C ${pkgdir}/usr/share/icons

 
}

