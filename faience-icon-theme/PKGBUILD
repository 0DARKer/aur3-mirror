pkgname=faience-icon-theme
pkgver=0.3
pkgrel=1
pkgdesc="Icon theme for GNOME 3/GNOME Shell."
url="http://tiheum.deviantart.com/art/Faience-icon-theme-255099649"
license=('GPL3')
arch=('any')
depends=('faenza-icon-theme')

options=(!strip)
source=("http://www.deviantart.com/download/255099649/faience_icon_theme_by_tiheum-d47vo5d.zip")
sha256sums=('0b743109ed2e3267a86f902ef9d7532247baa67dd8a93c5d9109d7e204c283b6')


package() {

  mkdir -p "${pkgdir}/usr/share/icons/"

  tar -xzf ${srcdir}/Faience.tar.gz -C ${pkgdir}/usr/share/icons
  tar -xzf ${srcdir}/Faience-Azur.tar.gz -C ${pkgdir}/usr/share/icons
  tar -xzf ${srcdir}/Faience-Claire.tar.gz -C ${pkgdir}/usr/share/icons
  tar -xzf ${srcdir}/Faience-Ocre.tar.gz -C ${pkgdir}/usr/share/icons

 
}

