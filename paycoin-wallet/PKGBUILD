# Maintainer Computerfr33k <computerfreak@computerfr33k.com>
pkgname=paycoin-wallet
pkgver=0.1.2.26
pkgrel=1
pkgdesc="Paycoin is a Paycoin network-compatible, community-developed wallet client."
arch=('i386' 'x86_64')
url="https://github.com/GAWMiners/paycoin"
license=('MIT/X11')
groups=('network')
depends=('qt5-base')
makedepends=()
optdepends=()
provides=('paycoin' 'paycoind')
source_i386=("https://github.com/GAWMiners/paycoin/releases/download/v${pkgver}/linux32.zip")
source_x86_64=("https://github.com/GAWMiners/paycoin/releases/download/v${pkgver}/linux64.zip")
sha256sums_i386=('188eff6bb53653b2acab72d90b0406420b2e030670b2567f4c9352da004b3647')
sha256sums_x86_64=('de33f5c89077d0ec104ecacb58087a3bce416a1c9f27fbbab266271d20e8f9b2')

package()
{
	install -d "${pkgdir}/opt/Paycoin"
	install -d "${pkgdir}/usr/bin"

	cd "${srcdir}/64"
	mv paycoin "${pkgdir}/opt/Paycoin/paycoin"
	mv paycoind "${pkgdir}/opt/Paycoin/paycoind"
	
	ln -s "${pkgdir}/opt/Paycoin/paycoin" "${pkgdir}/usr/bin/paycoin"
	ln -s "${pkgdir}/opt/Paycoin/paycoind" "${pkgdir}/usr/bin/paycoind"
}
