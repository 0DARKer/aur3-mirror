# Maintainer: Max Roder <maxroder at web dot de>
# Contributor: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=kismon
pkgver=0.4
pkgrel=1
pkgdesc="A PyGTK client that creates a map of a network"
arch=('x86_64' 'i686')
url="http://www.salecker.org/software/kismon/en"
license=('BSD')
depends=('python2' 'pyclutter' 'pygtk' 'python-simplejson' 'python-libchamplain')
source=("http://files.salecker.org/${pkgname}/${pkgname}-${pkgver}.tar.gz" "LICENSE")
md5sums=('324ec3749474ee1f5e7e1938914005af'
         'd400b45464aad532f0901d4ce5d7aaa8')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 setup.py build

}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 setup.py install --root=${pkgdir}

  install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE

}

