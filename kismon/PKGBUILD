# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=kismon
pkgver=0.3
pkgrel=2
pkgdesc="A PyGTK client that creates a map of a network"
arch=('x86_64' 'i686')
url="http://www.salecker.org/software/kismon/en"
license=('BSD')
depends=('python2' 'pyclutter' 'pygtk' 'python-libchamplain')
source=("http://files.salecker.org/${pkgname}/${pkgname}-${pkgver}.tar.gz" "LICENSE")
md5sums=('681ad92786b93316af5c69b49ea35ff9'
         'd400b45464aad532f0901d4ce5d7aaa8')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 setup.py build

}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 setup.py install --root=${pkgdir}

  install -Dm644 ${srcdir}/LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE

}

# vim:set ts=2 sw=2 et:
