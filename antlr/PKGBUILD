pkgname=antlr
pkgver=3.3
pkgrel=2
pkgdesc="ANother Tool for Language Recognition, (formerly PCCTS) is a language tool that provides a framework for constructing recognizers, compilers, and translators from grammatical descriptions containing C++, Java, C or python actions"
url="http://www.antlr.org/"
arch=("i686" "x86_64")
license=("BSD")
depends=('java-environment' 'bash')
makedepends=()
provides='antlr3'
source=(http://www.antlr.org/download/${pkgname}-${pkgver}-complete.jar antlr.sh LICENSE.txt antlr3)
md5sums=('238becce7da69f7be5c5b8a65558cf63' '7c8dfb7f0bf58ca1b183e5e5b155f512' '50cdd42e463eef143d5fa628e78c8ffe' 'd34963f2f65914473fb803a0b7296ed6')
options=()

package() {
  install -m755 -d "${pkgdir}/usr/share/java/${pkgname}" \
                   "${pkgdir}/etc/profile.d" \
                   "${pkgdir}/usr/share/licenses/${pkgname}" \
                   "${pkgdir}/usr/bin"

  install -m644 ${srcdir}/${pkgname}-${pkgver}-complete.jar "${pkgdir}/usr/share/java/${pkgname}/" || return 1
  install -m755 ${srcdir}/${pkgname}.sh "${pkgdir}/etc/profile.d/"
  install -m755 ${srcdir}/${pkgname}3 "${pkgdir}/usr/bin/"
  install -m644 ${srcdir}/LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/" || return 1


}

