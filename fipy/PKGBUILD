pkgname=fipy
pkgver=2.1.1
pkgrel=2
pkgdesc="Partial differential equation solver for Python, based on finite volume approach."
arch=('i686' 'x86_64')
url="http://www.ctcms.nist.gov/fipy"
license=('Public Domain')
source=(http://matforge.org/fipy/downloader/download/file/40/Fipy-${pkgver}.tar.gz)
depends=('python2' 'python-numpy' 'pysparse' 'python-matplotlib')
makedepends=('python2-distribute')
sha1sums=('474716441c88c5efe93a676ed1eea879835941bd')

package() {
   cd ${srcdir}/FiPy-2.1
   python2 setup.py install --prefix=/usr --root=${pkgdir}
}
