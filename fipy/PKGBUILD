# Maintainer: St√©phane Gaudreault <stephane@archlinux.org>
pkgname=fipy
pkgver=3.0
pkgrel=1
pkgdesc="Partial differential equation solver for Python, based on finite volume approach."
arch=('any')
url="http://www.ctcms.nist.gov/fipy"
license=('Public Domain')
source=(http://www.ctcms.nist.gov/fipy/download/FiPy-${pkgver}.tar.gz)
depends=('python2' 'python2-numpy' 'pysparse' 'python2-scipy' 'python2-matplotlib')
makedepends=('python2-distribute')
sha1sums=('44599e0c0666d7c998f9733845015a59cad9d4a3')

build() {
   cd "${srcdir}/FiPy-${pkgver}"
   python2 setup.py build
}

package() {
   cd "${srcdir}/FiPy-${pkgver}"
   python2 setup.py install --prefix=/usr --root="${pkgdir}" --skip-build --optimize=1
}
