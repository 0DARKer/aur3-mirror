# Contributor: Adrián Chaves Fernández <adriyetichaves@gmail.com>, 2009

pkgname=hunspell-gl-es
pkgver=2.2
pkgrel=2
pkgdesc="Galician dictionary for Hunspell"
arch=('i686' 'x86_64')
url="http://hunspell.sourceforge.net/"
license=('GPL')
depends=('hunspell')
source=(gl_ES.aff
	gl_ES.dic)
md5sums=('c68ac2db10a5e1942da589ab7b3aaafa'
         'a31a533a22309f3f21baeaa7e489c2e4')


build() {
  mkdir -p $pkgdir/usr/share/myspell
  mkdir -p $pkgdir/usr/share/enchant
    
# Fix so Enchant can use dictionaries for Hunspell too.  
  ln -s /usr/share/myspell $pkgdir/usr/share/enchant/myspell
  
# Fix so apps can use dictionaries both for gl and gl_ES lang codes.
  cp $srcdir/gl_ES.aff $pkgdir/usr/share/myspell/gl_ES.aff
  cp $srcdir/gl_ES.aff $pkgdir/usr/share/myspell/gl.aff
  cp $srcdir/gl_ES.dic $pkgdir/usr/share/myspell/gl_ES.dic
  cp $srcdir/gl_ES.dic $pkgdir/usr/share/myspell/gl.dic
}
