# vim:set ts=2 sw=2 et ft=sh tw=100: expandtab

pkgname=libgweather2
_pkgname=libgweather
pkgver=2.30.3
pkgrel=1
pkgdesc="Provides access to weather information from the net (legacy version)"
arch=('i686' 'x86_64')
url="http://www.gnome.org/"
license=('GPL')
groups=()
depends=(gconf libsoup-gnome gtk2)
makedepends=('pkgconfig' 'intltool' 'gtk-doc' 'gobject-introspection' 'gnome-common')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=('!libtool' '!emptydirs')
install=
source=(http://ftp.de.debian.org/debian/pool/main/libg/${_pkgname}/${_pkgname}_${pkgver}.orig.tar.gz
http://ftp.de.debian.org/debian/pool/main/libg/${_pkgname}/${_pkgname}_${pkgver}-1.debian.tar.gz
)
noextract=()

build(){
  cd "$srcdir/$_pkgname-$pkgver"

  patch -Np1 -i "${srcdir}/debian/patches/99_ltmain_as-needed.patch"
  gtkdocize
  autoreconf -fi

  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --enable-locations-compression

  make
}
package(){
  cd "$srcdir/$_pkgname-$pkgver"

    make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install

    install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
    gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" --domain libgweather ${pkgdir}/etc/gconf/schemas/*.schemas
    rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}

md5sums=('df3093198247d0cc688ebf7dd9efd511'
         '68c6fa6e74ecd7d89d15623d7ec74379')
