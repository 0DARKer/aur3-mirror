# Contributor: Tibor Bamhor <tiborb95 at gmail.com>

pkgname=dtboost
pkgver=1.6.14
pkgrel=1
pkgdesc="Deamon that in- and decreases priority of processes on the fly (both CPU and disk I/O)"
url="http://code.google.com/p/dtboost/"
license="GPL-3"
arch=('i686')
depends=(python2)
optdepends=('cpulimit: CPU use limit per process')
install=dtboost.install
backup=('etc/dtboost.conf')
source=(http://dtboost.googlecode.com/files/dtboost-$pkgver.tgz)

md5sums=('7216a03cca9330c0a7cf79040ed006df')

build() {
	#mkdir  $startdir/src/$pkgname-$pkgver
	
	rm -rf $startdir/pkg/*
	
	mkdir -p $startdir/pkg/usr/share/dtboost/
   install -m 744 $startdir/src/dtboost/dtboost-$pkgver.py $startdir/pkg/usr/share/dtboost/dtboost.py || exit 1
	
	mkdir -p $startdir/pkg/etc/rc.d/
	install -m 744 $startdir/src/dtboost/dtboost.initscript $startdir/pkg/etc/rc.d/dtboost || exit 1	

	mkdir -p $startdir/pkg/etc/rc.d/
	install -m 644 $startdir/src/dtboost/config $startdir/pkg/etc/dtboost.conf || exit 1

	mkdir -p $startdir/pkg//usr/lib/systemd/system/
	install -m 644 $startdir/src/dtboost/dtboost.service $startdir/pkg/usr/lib/systemd/system/dtboost.service || exit 1	
  

}


