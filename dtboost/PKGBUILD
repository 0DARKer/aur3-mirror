# Contributor: Tibor Bamhor <tiborb95 at gmail.com>

pkgname=dtboost
pkgver=1.6.13
pkgrel=2
pkgdesc="Deamon that modifies process priorities (CPU and disk I/O) and limits CPU utilization on the fly"
url="http://code.google.com/p/dtboost/"
license="GPL-3"
arch=('i686' 'x86_64')
depends=(python2)
optdepends=('cpulimit: CPU use limit per process')
install=(${pkgname}.install)
backup=('etc/dtboost.conf')
source=(http://dtboost.googlecode.com/files/dtboost-$pkgver.tar.gz)

md5sums=('22448a07b7d4cdd48fbb18d071d18b53')

build() {
	#mkdir  $startdir/src/$pkgname-$pkgver
	
	rm -rf $startdir/pkg/*
	
	#chmod 755 dtboost-$pkgver.py
	mkdir -p $startdir/pkg/usr/share/dtboost/
	#cp $startdir/src/dtboost-$pkgver.py $startdir/pkg/usr/share/dtboost/dtboost.py || exit 1
	install -m 744 $startdir/src/dtboost-$pkgver.py $startdir/pkg/usr/share/dtboost/dtboost.py || exit 1
	

	#chmod 755 dtboost.initscript
	mkdir -p $startdir/pkg/etc/rc.d/
	#cp dtboost.initscript $startdir/pkg/etc/rc.d/dtboost || exit 1
	install -m 744 dtboost.initscript $startdir/pkg/etc/rc.d/dtboost || exit 1
	
	#chmod 555 config
	mkdir -p $startdir/pkg/etc/rc.d/
	#cp config $startdir/pkg/etc/dtboost.conf || exit 1
	install -m 644 config $startdir/pkg/etc/dtboost.conf || exit 1
	

}


