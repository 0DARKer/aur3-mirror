# Maintainer: Auguste Pop <auguste [at] gmail [dot] com>

pkgname=lucidor
pkgver=0.9.4
pkgrel=2
pkgdesc="A program for reading and handling EPUB e-books and OPDS catalogs"
arch=('i686' 'x86_64')
url="http://lucidor.org/lucidor/"
license=('GPL3')
depends=('xulrunner' 'desktop-file-utils')
install=$pkgname.install
source=($url${pkgname}_$pkgver.tar.gz)
md5sums=('76d2a37560ce8ed67015cebffca9e1c8')

build()
{
    cd $srcdir/$pkgname-$pkgver
    sed -i 's/MaxVersion=.*/MaxVersion=\*/' lucidor/application.ini
    make
}

package()
{
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir install
}
