pkgname=python-devassistant
pkgver=0.9.1
pkgrel=2
pkgdesc="Helps with creating and setting up basic projects in various languages, installing dependencies, setting up environment"
arch=('any')
url="http://devassistant.org"
license=('GPL2')
depends=('python-yaml' 'python-pygithub' 'python-six' 'python-jinja' 'python-progress')
makedepends=('python-setuptools')
source=(https://github.com/bkabrda/devassistant/archive/v$pkgver.tar.gz)
md5sums=('565da831a8486caedcbb9871782c9572')

package() {
  cd $srcdir/devassistant-$pkgver
  python setup.py install --prefix=/usr --root=$pkgdir
}
