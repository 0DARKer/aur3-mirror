pkgname=python-devassistant
pkgver=0.7.0
pkgrel=1
pkgdesc="Help set up your developing environment, publish your code, and do many of the chores that somehow keep you from the important stuff - writing your software."
arch=('any')
url="http://devassistant.org"
license=('GPL2')
depends=('python-yaml' 'python-github')
makedepends=('python' 'python-setuptools')
source=(https://github.com/bkabrda/devassistant/archive/v$pkgver.tar.gz)
md5sums=('f7ad67f848e17f0d3503bae44006d6c4')

build() {
  /bin/true
}

package() {
  cd $srcdir/devassistant-$pkgver
  python setup.py install --prefix=/usr --root=$pkgdir
}
