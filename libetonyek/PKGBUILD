# Contributor: Yue

pkgname=libetonyek
pkgver=0.0.1
pkgrel=1
pkgdesc="A library and a set of tools for reading and converting Apple Keynote presentations."
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/libetonyek/"
license=('MPL2')
options=(!libtool)
depends=('libwpd>=0.9.5' 'libxml2' 'gperf>=3.0' 'zlib')
makedepends=('boost')
source=(http://dev-www.libreoffice.org/src/${pkgname}-${pkgver}.tar.xz)
sha256sums=('5451e15e55944322710d031e5213578dc0ead42b687926814ee4d8e29dced4bf')

build() {
  cd "${pkgname}-${pkgver}"
  ./autogen.sh
  ./configure --disable-werror --without-docs --disable-tests --enable-static=no --prefix=/usr
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="$pkgdir" install
}
