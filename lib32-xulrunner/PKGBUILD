pkgname=lib32-xulrunner
pkgver=1.9.1.4
pkgrel=1
pkgdesc="Mozilla Runtime Environment, 32-bit upstream build"
depends=('lib32-gtk2' 'lib32-gcc-libs' 'lib32-nss' 'lib32-libxt' 'lib32-libidl2')
arch=(x86_64)
url="http://wiki.mozilla.org/XUL:Xul_Runner"
license=('MPL')
groups=('lib32')
source=(http://releases.mozilla.org/pub/mozilla.org/${pkgname/lib32-/}/releases/${pkgver}/runtimes/${pkgname/lib32-/}-${pkgver}.en-US.linux-i686.tar.bz2)
md5sums=('380ad828c85c9becac0e690f081c33b4')

build() {
  mkdir -p $startdir/pkg/opt/lib32/
  mv ${pkgname/lib32-/} $startdir/pkg/opt/lib32/
}
