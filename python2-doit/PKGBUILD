# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python2-doit
_pyname=doit
pkgver=0.21.0
pkgrel=1
pkgdesc='Automation Tool'
arch=('any')
url='http://pydoit.org/'
license=('MIT')
depends=('python2' 'python2-pyinotify')
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/$(echo ${_pyname} | cut -c1)/${_pyname}/${_pyname}-${pkgver}.tar.gz"
        "LICENSE")
md5sums=('04425654b9b47065cb2d40a07bfcba52'
         '7d6fd7c8e022bae9010af272c31eb45f')

package() {
  cd "${srcdir}/${_pyname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 ../LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
