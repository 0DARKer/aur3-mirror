# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on the telepathy-glib package trunk

_pkgbase=telepathy-glib
pkgname=telepathy-glib-dev
pkgver=0.13.17
pkgrel=1
pkgdesc="GLib bindings for the Telepathy D-Bus protocol"
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org"
groups=('telepathy')
license=('LGPL2.1')
options=('!libtool')
depends=('dbus-glib')
makedepends=('libxslt' 'vala-devel>=0.11.0' 'gobject-introspection')
conflicts=("${_pkgbase}")
provides=("${_pkgbase}=${pkgver}")
source=("${url}/releases/${_pkgbase}/${_pkgbase}-${pkgver}.tar.gz")
md5sums=('c0aa39fa1aa581e5b63d6b0e6d1a6fe8')

build() {
  cd ${_pkgbase}-${pkgver}
  PYTHON=/usr/bin/python2 ./configure --prefix=/usr --enable-static=no
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}