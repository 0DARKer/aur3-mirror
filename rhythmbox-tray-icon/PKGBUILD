# Maintainer: Konstantin A <nextoscore [at] gmail.com>
pkgname=rhythmbox-tray-icon
pkgver=0.2
pkgrel=1
pkgdesc="Restores the tray icon functionality from the 0.x series."
arch=('any')
url="http://github.com/palfrey/rhythmbox-tray-icon"
license=('GPL3')
depends=('rhythmbox>=2.90' 'python-cairo' 'gnome-icon-theme')
changelog=$pkgname.changelog
source=($pkgname-$pkgver-$pkgrel.tar.gz)
md5sums=('d1b3561fef9a1974c4fc9165e35c1f35')

package() {
	cd "$srcdir/${pkgname}-${pkgver}-${pkgrel}"
	install -d "${pkgdir}/usr/lib/rhythmbox/plugins/tray-icon"
	install -t "${pkgdir}/usr/lib/rhythmbox/plugins/tray-icon" tray_icon.py tray_icon.plugin
	install -d "${pkgdir}/usr/share/doc/rhythmbox-tray-icon"
	install -t "${pkgdir}/usr/share/doc/rhythmbox-tray-icon" copyright README.rst
}

