# Maintainer: Alessandro Nakamuta <alessandro dot ufms at gmail dot com>

pkgname=rabbitvcs-gedit
pkgver=0.14.1.1
pkgrel=1
pkgdesc="Gedit front-end for RabbitVCS"
arch=('i686' 'x86_64')
url="http://rabbitvcs.org/"
#install=${pkgname}.install
depends=('gedit' 'rabbitvcs>=0.14')
#makedepends=()
#backup=()
license=('GPL')
source=(http://rabbitvcs.googlecode.com/files/rabbitvcs-${pkgver}.tar.gz)
md5sums=('f9cc7e667cabf8c54bcdc7718d3cfb68')

build(){
	pluginlocation=$pkgdir/usr/lib/gedit-2/plugins
	cd ${srcdir}/rabbitvcs-${pkgver}/clients/gedit
	mkdir -p $pluginlocation
	cp rabbitvcs-plugin.py $pluginlocation
	cp rabbitvcs.gedit-plugin $pluginlocation
}
