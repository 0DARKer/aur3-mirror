pkgname=mini18n-svn
pkgver=3105
pkgrel=1
pkgdesc="A a small and non-intrusive translation library designed for small memory and non-GNU systems. (SVN version)"
arch=(x86_64 i386)
url="http://wiki.yabause.org/index.php5?title=Mini18n"
license=("GPL")
makedepends=(cmake subversion)
conficts=(mini18n-git)
provides=(mini18n-git)
source=("${pkgname%-*}::svn+https://yabause.svn.sourceforge.net/svnroot/yabause/trunk/mini18n")
md5sums=('SKIP')

pkgver() {
	cd "$SRCDEST/${pkgname%-*}"
	svnversion
}

build() {
	cd "${srcdir}/${pkgname%-*}"
	cmake . -DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd "${srcdir}/${pkgname%-*}"
	make DESTDIR="${pkgdir}/" install
	install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
