# Maintainer: Grigorios Bouzakis <grbzks@xsmail.com>
pkgname=fbcat
pkgver=0.2
pkgrel=1
pkgdesc="Framebuffer screenshot grabber"
arch=('i686' 'x86_64')
url="http://code.google.com/p/fbcat"
license=('GPL')
depends=('glibc' 'sh')
optdepends=('graphicsmagick: fbgrab wrapper'
	    'imagemagick: fbgrab wrapper'
	    'netpbm: fbgrab wrapper')
provides=('fbgrab')
conflicts=('fbgrab')
replaces=('fbgrab')
source=(http://fbcat.googlecode.com/files/$pkgname-$pkgver.tar.gz fbcat.1 fbgrab.1)
md5sums=('f17e89a33a7e6960741c76353db28346'
	 '85c31f14d8d5d7e2541f8918680ad2fa'
	 'f0ed68439c303a943bae5b4c5d9bb208')

build() {
  cd $srcdir/$pkgname-$pkgver

  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  install -D -m 755 fbcat $pkgdir/usr/bin/fbcat
  install -D -m 755 fbgrab $pkgdir/usr/bin/fbgrab

  install -D -m 644 $srcdir/fbcat.1 $pkgdir/usr/share/man/man1/fbcat.1
  install -D -m 644 $srcdir/fbgrab.1 $pkgdir/usr/share/man/man1/fbgrab.1
}

# vim:set ts=2 sw=2 et:
