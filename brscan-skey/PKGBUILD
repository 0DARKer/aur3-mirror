# Contributor: Olaf Leidinger <leidola@newcon.de>
# Contributor: deluminathor <deluminathor at gmail dot com>
pkgname=brscan-skey
pkgver=0.2.1_3
pkgrel=2
pkgdesc="Brother Scan-Key-Tool"
depends=('sane' 'sed')
arch=('i686' 'x86_64')
url="http://welcome.solutions.brother.com/bsc/public_s/id/linux/en/index.html"
license=("GPL" 'custom:brother commercial license')
install=brscan-skey.install

if [ $(uname -m) = "x86_64" ]; then
  deb="${pkgname}-${pkgver/_/-}.amd64.deb"
  deb_md5sum="96373faf9920e3c59abae8baf07ae2bc"
else
  deb="${pkgname}-${pkgver/_/-}.i386.deb"
  deb_md5sum="ea047a3abe14cb92377ea0d566849b07"
fi

source=("http://pub.brother.com/pub/com/bsc/linux/dlf/$deb")
md5sums=($deb_md5sum) 

build() {
    cd $srcdir || return 1
    ar -x $deb || return 1
    tar -xzf $srcdir/data.tar.gz -C $pkgdir || return 1
}
