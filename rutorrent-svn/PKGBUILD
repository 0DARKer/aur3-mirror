# Maintainer: skydrome <irc.freenode.net>
# Contributor: smallcms <smallcms at mail dot ru>

pkgname=rutorrent-svn
pkgver=1967
pkgrel=1
pkgdesc="Yet another web front-end for rTorrent"
arch=('any')
url="http://code.google.com/p/rutorrent"
license=('GPL')
depends=('rtorrent' 'php>=5.3.0')
makedepends=('subversion')
optdepends=()
provides=('rutorrent')
conflicts=('rutorrent')
backup=()
options=(!strip emptydirs)
install=
source=()
md5sums=()

_svntrunk="http://rutorrent.googlecode.com/svn/trunk/"
_svnmod="rutorrent"
_web="srv/http"
_webuser="http:http"

build() {
cd "$srcdir"

    msg "Connecting to SVN server..."
    [[ -d "$_svnmod/.svn" ]] &&
        svn up "$_svnmod" ||
        svn co ${_svntrunk}/${_svnmod} --config-dir ./ "$_svnmod"
    msg "SVN checkout done or server timeout"

    sed -i ${_svnmod}/conf/config.php \
		-e "s:\$topDirectory .*:\$topDirectory = '/home';:" \
		-e "s:\$XMLRPCMountPoint .*:\$XMLRPCMountPoint = \"/rutorrent/RPC1\";:"
    mkdir -p ${pkgdir}/${_web}
    cp -r "$_svnmod" ${pkgdir}/${_web}
    chmod -R 755 "${pkgdir}/${_web}/${_svnmod}"
    chown -R ${_webuser} "${pkgdir}/${_web}/${_svnmod}"
}
