pkgname=nagios-images
pkgver=0.7
pkgrel=8
pkgdesc="Collection of images and icons for the nagios system"
arch=('any')
url="http://www.nagios.org/"
license=('GPL')
#depends=('python' 'pygtk' 'gnome-python-extras' 'python-lxml')
#makedepends=('deb2targz')
source=("http://ftp.de.debian.org/debian/pool/main/n/nagios-images/nagios-images_0.7.tar.gz" "http://f.h-ix.net/nagios-images-helios.tar.gz")
md5sums=('08f2ea58b3a23040e9b15f01765407f6' '2318f58535ad5f648335b3f06fbb1af2')

build() {
    mkdir -p $pkgdir/usr/share/nagios/share/images/logos || return 1
    cp -r $srcdir/nagios-images-0.7/* $pkgdir/usr/share/nagios/share/images/logos/ || return 1
    mv $srcdir/helios $pkgdir/usr/share/nagios/share/images/logos/ || return 1
    rm -Rf $pkgdir/usr/share/nagios/share/images/logos/debian || return 1
}

