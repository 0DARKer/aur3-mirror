pkgname=rxvt
pkgver=2.7.10
pkgrel=3
pkgdesc="A colour vt102 terminal emulator"
arch=('i686' 'x86_64')
url="http://rxvt.sourceforge.net/"
license=('GPL')
depends=('libx11')
makedepends=('libxt')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('302c5c455e64047b02d1ef19ff749141')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr || return 1
	make || return 1
	make prefix="$pkgdir/usr" mandir="$pkgdir/usr/share/man/man1" install || return 1
	rm "$pkgdir/usr/bin/$pkgname-$pkgver" || return 1
	rmdir "$pkgdir/usr/include" || return 1
	rmdir "$pkgdir/usr/lib" || return 1
}
