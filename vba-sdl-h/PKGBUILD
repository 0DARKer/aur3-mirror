# Maintainer: flerovium <fmeyer1196@yahoo.de>
# Contributor: Frederic Raphael Meyer <fmeyer1196@yahoo.de>
pkgname=vba-sdl-h
pkgver=1.7.2
pkgrel=1
pkgdesc="VisualBoyAdvance SDL for Hackers."
arch=(i686 x86_64)
url="https://www.github.com/nanoemu/vba-sdl-h"
license=('GPL')
groups=
provides=
depends=('sdl' 'minizip')
makedepends=('sdl' 'minizip')
conflicts=()
replaces=()
backup=()
install=
source=($pkgname-$pkgver.zip)
md5sums=('254edadaa4320c427be09e7030406547')

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver
  mkdir -p $pkgdir/usr/bin/
  mkdir -p $pkgdir/etc/
  install vba-sdl-h $pkgdir/usr/bin/
  install src/VisualBoyAdvance.cfg $pkgdir/etc/
}
