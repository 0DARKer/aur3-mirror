pkgname='perl-unix-processors'
pkgver='2.042'
pkgrel='1'
pkgdesc="Interface to per-processor information"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Unix-Processors'
source=('http://search.cpan.org/CPAN/authors/id/W/WS/WSNYDER/Unix-Processors-2.042.tar.gz')
md5sums=('641db045b253a1b75a1dcbc615981b40')

build() {
  DIST_DIR="${srcdir}/Unix-Processors-2.042"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
