# Contributor: Vitaliy Berdinskikh ur6lad[at]i.ua

_timestamp=v20101205
pkgname=jetty
pkgver=7.2.2
pkgrel=1
pkgdesc="A full-fledged production-grade lightweight Java Servlet Container"
arch=('i686' 'x86_64')
url="http://jetty.codehaus.org/jetty/"
license=('Apache' 'EPL')
depends=('java-runtime')
source=(http://dist.codehaus.org/${pkgname}/${pkgname}-hightide-${pkgver}/${pkgname}-hightide-${pkgver}.${_timestamp}.tar.bz2
		rc.$pkgname $pkgname.conf.d)
options=(!strip)

build() {
	_foldername=${pkgname}-hightide-${pkgver}.${_timestamp}

	rm -r $srcdir/${_foldername}/bin/*cygwin*
}

package() {
	_foldername=${pkgname}-hightide-${pkgver}.${_timestamp}

	mkdir -p $pkgdir/opt
	cp -a $srcdir/${_foldername} $pkgdir/opt/$pkgname
	install -D -m755 $srcdir/rc.$pkgname $pkgdir/etc/rc.d/$pkgname
	install -D -m644 $srcdir/$pkgname.conf.d $pkgdir/etc/conf.d/$pkgname
}

md5sums=('8cc69ef460b1fe889fcf1cb1b6c0b4f9'
         'ef368a7340b2e2e5b84f61dc10a5e29c'
         '9eef63b8a7df7f1de895139602baf5d5')
sha256sums=('5267a64bd14ba5da64a23d327589717da40f4364016edd038f92e6b5246ed3ec'
            'ac46dc9713a7955f3552e39dda8e0357dcc0f433a08cd2fc5e50435dc5b8550c'
            '4600f781e230a697d6bef753cc46f82febdaf5b698530ac1968fbdfd4c08340f')	
