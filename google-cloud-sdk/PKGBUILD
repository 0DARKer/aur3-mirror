pkgname="google-cloud-sdk"
pkgver="1.16.0"
pkgrel="1"
pkgdesc="A command-line tool to manage Google Compute Engine resources"
url="https://developers.google.com/compute/docs/gcutil/"
license=("Apache")
arch=("any")
source=(https://dl.google.com/dl/cloudsdk/release/google-cloud-sdk.zip)
depends=('python2')
sha1sums=('a4fe88d6f17ac4aaf5d1ed8316201b8fe86271c6')

package() {
  mkdir "$pkgdir/opt"
  cp -r "$srcdir/$pkgname" $pkgdir/opt
  $pkgdir/opt/google-cloud-sdk/install.sh --usage-reporting false --disable-installation-options --path-update true --bash-completion true --rc-path ~/.bashrc
  mkdir -p $pkgdir/usr/bin
  for i in gcloud gcutil gsutil bq; do
    ln -s $pkgdir/opt/google-cloud-sdk/bin/$i $pkgdir/usr/bin/$i
  done
}