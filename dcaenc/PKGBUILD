# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>
pkgname=dcaenc
pkgver=1
pkgrel=1
pkgdesc="A Free Software (LGPL-licensed) encoder for the DTS Coherent Acoustics audio format."
arch=('x86_64' 'i686')
url="http://aepatrakov.narod.ru/dcaenc/"
license=('LGPL')
depends=('alsa-lib')
options=('!libtool')
source=("http://aepatrakov.narod.ru/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('626bba344bdc3e4396dd87f894d5613e642664a1862c684ce06955791c4c10c3b2b6c2327cb8f35c0ea4ca01567f43be4fdf8cada0ce0ce7867d7428f08014e3')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -k check
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

# vim:set ts=2 sw=2 et:
