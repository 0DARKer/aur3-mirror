# Maintainer: kfgz <kfgz at interia pl>
# Contributor: Justin Davis <jrcd 83 at gmail>

pkgname=ocaml-easy-format
_oname=easy-format
pkgver=1.0.0
pkgrel=1
pkgdesc="Data pretty printing made easy"
url="http://martin.jambon.free.fr/easy-format.html"
arch=('i686' 'x86_64')
options=('!strip')
license=('BSD')
depends=('ocaml')
makedepends=('ocaml-findlib')
source=(http://martin.jambon.free.fr/${_oname}-${pkgver}.tar.gz)
md5sums=(bbb01bbf67cf3f578a84381c9b1f79d9)

_extdir="${srcdir}/${_oname}-${pkgver}"
_destdir="${pkgdir}/usr/lib/ocaml"

build() {
  cd "${_extdir}"
  make
}

package() {
  cd "${_extdir}"
  mkdir -p "${_destdir}"
  OCAMLFIND_DESTDIR="${_destdir}" make install
}
