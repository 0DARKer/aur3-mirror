pkgname=gnosis-utils
pkgver=1.2.1
pkgrel=1
pkgdesc="Number of Python libraries, most (but not all) related to working with XML"
url="http://gnosis.cx"
license=""
depends=(python)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://gnosis.cx/download/Gnosis_Utils.More/Gnosis_Utils-$pkgver.tar.bz2)
md5sums=('a8bb61a7e0caa7c489213e5ecf517a69')

build() {
  cd $startdir/src/Gnosis_Utils-$pkgver
  python ./setup.py install --root=$startdir/pkg/
  rm $startdir/pkg/usr/lib/python2.4/site-packages/{README,MANIFEST}

}

