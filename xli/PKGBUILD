# $Id: PKGBUILD,v 1.2 2005/07/25 12:06:06 kth5 Exp $
# Maintainer: Alexander Baldeck <alexander.baldeck@icomedias.com>
pkgname=xli
pkgver=1.17.0
pkgrel=3
pkgdesc="An image display program for X"
depends=('libxext' 'libpng' 'libjpeg')
makedepends=('imake' 'patch' 'gcc')
arch=(i686)
license=('custom')
source=(ftp://ftp2.de.debian.org/debian/pool/main/x/xli/${pkgname}_${pkgver}.orig.tar.gz \
	ftp://ftp2.de.debian.org/debian/pool/main/x/xli/xli_1.17.0-22.diff.gz)
url="ftp://ftp.de.debian.org/debian/pool/main/x/xli/"

build() {
  cd $startdir/src/${pkgname}-${pkgver}.orig
  patch -Np1 -i ../xli_1.17.0-22.diff
  export CFLAGS="-DHAVE_GUNZIP"
  xmkmf
  make -f Makefile.std gcc || return 1
  make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/man/man3/
	install -m644 $startdir/src/${pkgname}-${pkgver}.orig/xli.man $startdir/pkg/usr/man/man3/
	install -m644 $startdir/src/${pkgname}-${pkgver}.orig/xliguide.man $startdir/pkg/usr/man/man3/
	install -m644 $startdir/src/${pkgname}-${pkgver}.orig/xlito.man $startdir/pkg/usr/man/man3/
}
md5sums=('504f916c9a7d062c8f856f1625634ba8'
         'c5a8bac0cd7eac2596d0bbe5be4a26f2')
