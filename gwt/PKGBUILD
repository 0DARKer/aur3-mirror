pkgname=gwt
pkgver=2.5.1
arch=('any')
pkgrel=1
pkgdesc='Google Web Toolkit SDK contains the core libraries and compiler that you need to write web applications'
url='https://developers.google.com/web-toolkit/'
license=('APACHE')
depends=('java-environment')
source=("http://google-web-toolkit.googlecode.com/files/${pkgname}-${pkgver}.zip")
sha256sums=('c457df45a3eed582452c5784ed11746685df494c0ffe4a8ae4de52945916593a')

package() {
  install -d "${pkgdir}"/opt
  cp -R ${pkgname}-${pkgver} "${pkgdir}"/opt/${pkgname}

  find ${pkgdir} -name "*.dll" -o -name "*.cmd" -delete
}
