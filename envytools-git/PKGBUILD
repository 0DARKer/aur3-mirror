
pkgname=envytools-git
pkgver=20120908
pkgrel=1
pkgdesc="A tool for nouveau debugging"
arch=('i686' 'x86_64')
url="http://nouveau.sourceforge.net"
license=('GPL')
makedepends=('cmake' 'flex')
source=('yyscan.patch')
md5sums=('19c5490b42b2aa7e056f44d58b298da9')

_gitname="envytools"
_gitroot="git://nouveau.git.sourceforge.net/gitroot/nouveau/envytools"

build() {
  cd $srcdir
  msg "Connecting to the GIT server...."
  
  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  
  msg "GIT checkout done"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi
  msg "Patching..."
  cd $srcdir/envytools
  patch -p1 < ${srcdir}/yyscan.patch
  mkdir $srcdir/build
  cd $srcdir/build

  cmake $startdir/src/$_gitname

  make

}

package() {
  cd $srcdir/build

  make DESTDIR=$pkgdir PREFIX=/usr install

}

# vim:set ts=2 sw=2 et:
