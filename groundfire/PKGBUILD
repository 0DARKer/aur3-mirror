 
# Author: Nicoco
 pkgname=groundfire
 pkgver=0.25
 pkgrel=1
 pkgdesc="Up to 8 tanks fighting each others on one computer"
 url="http://www.groundfire.net/"
 license="MIT"
 arch=('i686' 'x86_64')
 depends=('glfw' 'freealut' 'openal')
 source=(http://www.groundfire.net/download/groundfire-src-0.25.tar.gz groundfire.desktop groundfire Makefile groundfire.png)
 md5sums=('52a32e3037798b81ef4430ab63ccb8ee' '72c6404e3f7e936f1fe4c3fa803913bd' 'a787f3d9a3dc812367d7c90d2aff6e12' 'ee364b8e30d2d78fab9f15cf9e0297dd' 'c9b4a39ae27332391acd089bb0f796a2')
 build() {

 #Install desktop file
 install -d $startdir/pkg/usr/share/applications
 install -m644 $startdir/src/groundfire.desktop $startdir/pkg/usr/share/applications

 #Install launcher
 install -d -m755 $startdir/pkg/usr/bin
 install -m755 $startdir/src/groundfire $startdir/pkg/usr/bin

 #Install icon
 install -d -m755 $startdir/pkg/usr/share/pixmaps
 install -m755 $startdir/src/groundfire.png $startdir/pkg/usr/share/pixmaps

 #Replacing Makefile
 cp $startdir/src/Makefile $startdir/src/$pkgname-$pkgver/Makefile
 cd $startdir/src/$pkgname-$pkgver/


 #Build
 make unix

 #Remove source
 rm $startdir/src/$pkgname-$pkgver/src -Rf 

 #Install Files
 install -d -m755 $startdir/pkg/opt/$pkgname
 cp $startdir/src/$pkgname-$pkgver/* $startdir/pkg/opt/$pkgname/ -R

 #Allowing anyone to modify config files (didn't find a way to do it better)
 chmod 777 $startdir/pkg/opt/$pkgname/conf -R
 }
 