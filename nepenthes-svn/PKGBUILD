# Contributor: enderst <enderst@gmail.com>
pkgname=nepenthes-svn
pkgver=2071
pkgrel=1
pkgdesc="A versatile tool to collect malware"
url="http://nepenthes.mwcollect.org"
license=(GPL)
arch=('i686' 'x86_64')
depends=('subversion' 'adns' 'curl' 'geoip' 'libcap' 'pcre')
source=()
install=$pkgname.install
md5sums=()
conflicts=('nepenthes')
_svntrunk=https://svn.carnivore.it/nepenthes/trunk/
_svnmod=nepenthes
build() {	
  svn co https://svn.carnivore.it/nepenthes/trunk/
  cd $startdir/src/trunk
  autoreconf -v -i
  ./configure --prefix=/opt/nepenthes --enable-mysql --with-mysql-include=/usr/include/mysql --with-mysql-lib=/usr/lib/mysql/libmysql || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  install -D -m755 $startdir/nepenthes.rc $startdir/pkg/etc/rc.d/nepenthes
  install -D -m755 $startdir/nepenthes.confd $startdir/pkg/etc/conf.d/nepenthes
  rm $startdir/pkg/opt/nepenthes/etc/nepenthes/nepenthes.conf.dist
}
