pkgname=obtheme
pkgver=2012
pkgrel=1
pkgdesc='A GUI theme editor for Openbox.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/obtheme"
depends=(python2 pygtk gtk2 python2-fuse)
source=(
  http://xyne.archlinux.ca/projects/obtheme/src/obtheme-2012.tar.xz
  http://xyne.archlinux.ca/projects/obtheme/src/obtheme-2012.tar.xz.sig
)
sha512sums=(
