depends=(python2 pygtk gtk2 python2-fuse)
source=(
  http://xyne.archlinux.ca/projects/obtheme/src/obtheme-2013.2.tar.xz
  http://xyne.archlinux.ca/projects/obtheme/src/obtheme-2013.2.tar.xz.sig
)
sha512sums=(
