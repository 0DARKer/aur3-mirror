source=(
  http://xyne.archlinux.ca/projects/obtheme/src/obtheme-2013.2.20.1.tar.xz
  http://xyne.archlinux.ca/projects/obtheme/src/obtheme-2013.2.20.1.tar.xz.sig
)
sha512sums=(
