# Contributor: Alessio Sergi <asergi [at] archlinux [dot] us>

pkgname=iscan-data
pkgver=1.7.0
pkgrel=1
pkgdesc="Image Scan! for Linux data files"
arch=('any')
url="http://avasys.jp/eng/linux_driver/"
license=('GPL2')
depends=('libxslt' 'udev')
conflicts=(${pkgname}-legacy)
install=${pkgname}.install
source=(http://linux.avasys.jp/drivers/${pkgname}/${pkgver}/${pkgname}_${pkgver}-0.tar.gz)
md5sums=('3e97c60ea9e2543a7366e2f4fc3a8654')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}

