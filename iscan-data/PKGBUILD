pkgname=iscan-data
pkgver=1.14.0
pkgrel=1
pkgdesc="Image Scan! for Linux data files"
arch=('any')
url="http://download.ebz.epson.net/dsc/search/01/search/?OSC=LX"
license=('GPL2')
depends=('libxslt' 'udev')
conflicts=(${pkgname}-legacy)
install=${pkgname}.install
source=("http://a1227.g.akamai.net/f/1227/40484/1d/download.ebz.epson.net/dsc/f/01/00/01/67/03/4907703f4750ee2f3f9687a06b6c328e51aa72ec/${pkgname}_${pkgver}-1.tar.gz")
md5sums=('7d1c70ed5f24a1840d2f40c4ec09ad27')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="${pkgdir}" install || return 1
}

