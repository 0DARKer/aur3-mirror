pkgname=iscan-data
pkgver=1.15.0
pkgrel=2
pkgdesc="Image Scan! for Linux data files"
arch=('any')
url="http://download.ebz.epson.net/dsc/search/01/search/?OSC=LX"
license=('GPL2')
depends=('libxslt' 'udev')
conflicts=(${pkgname}-legacy)
install=${pkgname}.install
source=("http://a1227.g.akamai.net/f/1227/40484/1d/download.ebz.epson.net/dsc/f/01/00/01/71/68/07e97977e5ec78666eb00e35b208f75bafe591f4/${pkgname}_${pkgver}-2.tar.gz")
md5sums=('f714c60043f67aa2474833073a6f1fa6')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="${pkgdir}" install
}

