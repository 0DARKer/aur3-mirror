# Contributor: mutlu_inek <mutlu_inek@yahoo.de>

pkgname=iscan-data
pkgver=1.12.0
pkgrel=1
pkgdesc="Image Scan! for Linux data files"
arch=('any')
url="http://avasys.jp/eng/linux_driver/"
license=('GPL2')
depends=('libxslt' 'udev')
conflicts=(${pkgname}-legacy)
install=${pkgname}.install
source=(http://linux.avasys.jp/drivers/${pkgname}/${pkgver}/${pkgname}_${pkgver}-3.tar.gz)
md5sums=('f883a2886e6e6958c6237edc497c8ab6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}

