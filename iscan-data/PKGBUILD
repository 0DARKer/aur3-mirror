# Contributor & Maintainer: mutlu_inek <mutlu_inek@yahoo.de>

pkgname=iscan-data
pkgver=1.6.0
pkgrel=1
pkgdesc="Necessary data files for iscan, the front-end for EPSON scanner/all-in-ones"
arch=('i686' 'x86_64')
url="http://www.avasys.jp/english/linux_e/dl_scan.html"
license=('GPL2')
depends=('libxslt' 'udev')
makedepends=()
conflicts=('iscan-legacy')
backup=()
options=()
source=(http://linux.avasys.jp/drivers/${pkgname}/${pkgver}/${pkgname}_${pkgver}-0.tar.gz)
md5sums=('8f8964734164ad4bc30ea89fb8802738')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
