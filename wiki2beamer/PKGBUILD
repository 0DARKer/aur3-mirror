# Contributor: Daniel Kaes (daniel.kaes@web.de)
pkgname=wiki2beamer
pkgver=0.8
pkgrel=2
pkgdesc="wiki2beamer is a small tool to create LaTeX Beamer presentations from text files with a wiki-like syntax. Thus, it enables the user to create beamer presentations in a less time-consuming way."
url="http://wiki2beamer.sourceforge.net"
license=("GPL2")
depends=("python")
arch=('i686' 'x86_64')
source=("http://downloads.sourceforge.net/project/wiki2beamer/wiki2beamer/wiki2beamer-0.8/wiki2beamer-0.8.zip")
md5sums=('646bfea3de43f34dc2eeda9439e40994')
build() {
  cd $startdir/src/$pkgname-$pkgver/code
  python setup.py install --root=$startdir/pkg
  mkdir -p $startdir/pkg/usr/man/man1
  cp $startdir/src/$pkgname-$pkgver/doc/man/man1/wiki2beamer* $startdir/pkg/usr/man/man1
}

