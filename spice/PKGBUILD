# Maintainer: Mikhail Kulemin <m1h@yandex.ru> 
# Maintainer: Pavel Zhukov <pavel@zhukoff.net> 
pkgname=spice
pkgver=0.6.3
pkgrel=2
pkgdesc="SPICE client."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig)
depends=(pixman celt0.5.1 spice-protocol alsa-utils libxrandr libjpeg cegui)
source=(http://spice-space.org/download/releases/$pkgname-$pkgver.tar.gz)
md5sums=('f48754e8d9ed4be8df6453eb7890cfb9')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-gui
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
