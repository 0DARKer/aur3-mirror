# $Id: PKGBUILD 173941 2012-12-28 13:12:00Z allan $
# Maintainer: Dan McGee <dan@archlinux.org>
# Maintainer: Allan McRae <allan@archlinux.org>

pkgname=valgrind-multilib
pkgver=3.8.1
pkgrel=2.1
pkgdesc="A tool to help find memory-management problems in programs"
arch=('x86_64')
license=('GPL')
url="http://valgrind.org/"
depends=('lib32-glibc>=2.17' 'lib32-glibc<2.18' 'perl')
makedepends=('gdb' 'gcc-multilib')
options=('!emptydirs')
provides=('valgrind')
conflicts=('valgrind')
source=(http://valgrind.org/downloads/valgrind-${pkgver}.tar.bz2
        valgrind-3.8.1-glibc-2.17.patch)
md5sums=('288758010b271119a0ffc0183f1d6e38'
         'e87c34f9f9ce0040d141b3bd57842b5c')

build() {
  cd ${srcdir}/valgrind-${pkgver}

  patch -p1 -i $srcdir/valgrind-3.8.1-glibc-2.17.patch

  ./configure --prefix=/usr --mandir=/usr/share/man

  make
}

package() {
  cd ${srcdir}/valgrind-${pkgver}
  make DESTDIR=${pkgdir} install
}
