# Contributor: Eduardo Martins Lopes < edumlopes at gmail dot com >
pkgname=dfu-programmer
pkgver=0.5.2
pkgrel=1
pkgdesc="Device Firmware Update based USB programmer for Atmel chips with a USB bootloader"
arch=('i686' 'x86_64')
url="http://dfu-programmer.sourceforge.net/"
license=('GPL')
depends=('libusb')
source=(http://downloads.sourceforge.net/sourceforge/dfu-programmer/dfu-programmer-$pkgver.tar.gz)
md5sums=('ce882d37383df698a1c530080724b191')

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$startdir/pkg" install
}


