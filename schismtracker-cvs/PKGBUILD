pkgname=schismtracker-cvs
pkgver=0.5
pkgrel=3
pkgdesc="Music editor based on Impulse Tracker."
arch=('i686' 'x86_64')
url="http://eval.sovietrussia.org/wiki/Schism_Tracker"
license=('GPL')
makedepends=('mesa' 'gcc' 'libx11')
depends=('sdl')
source=(http://nimh.org/schism/cvs-snapshot.tgz)
md5sums=('')  # you should update it with the current cvs snaptshot or comment this line

build() {
	cd $startdir/src/schism
	./configure --prefix=/usr/src
	make
	# mkdir -p $startdir/pkg/usr
	make prefix=$startdir/pkg/usr install

	#desktop icons
	mkdir -p $pkgdir/usr/share/pixmaps
	cp $srcdir/schism/icons/schism-icon-64.png $pkgdir/usr/share/pixmaps/schismtracker.png
	
	install -D -m644 $srcdir/../schismtracker.desktop $pkgdir/usr/share/applications/schismtracker.desktop

}
