# Maintainer: Linus Sj√∂gren <thelinx@unreliablepollution.net>
pkgname=bit
pkgver=0.3
pkgrel=1
pkgdesc="minimal build system written in python"
license=('BSD')
arch="any"
url="https://github.com/mnmlstc/bit"
depends=('python2')
conflicts=('bit-git')
source=("https://github.com/mnmlstc/bit/tarball/CaressOfSteel-0.3")
md5sums=('11d91d4376471242d6150ae5fa826d3e')

build() {
  cd "$srcdir"
  cd `find -name mnmlstc*`
  python2 setup.py install --prefix=$pkgdir/usr
  install -Dm0644 License.md \
    $pkgdir/usr/share/licenses/$pkgname/License.md
}
