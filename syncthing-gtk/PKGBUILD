# Maintainer: kozec <kozec at kozec dot com>
pkgname=syncthing-gtk
pkgver=0.2.1
pkgrel=1
pkgdesc="GTK3 & python based GUI and notification area icon for Syncthing"
arch=('any')
url="https://github.com/kozec/syncthing-gui"
license=('GPL2')
depends=('python2' 'python2-gobject' 'gtk3' 'syncthing')
source=(https://github.com/kozec/syncthing-gui/archive/${pkgver}.tar.gz)

build() {
  cd "$srcdir/syncthing-gui-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/syncthing-gui-$pkgver"

  python2 setup.py install --root=$pkgdir --optimize=1
}

md5sums=('a26ef17d64feaf5deced61ae5e9c3681')
