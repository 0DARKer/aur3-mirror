pkgname=glances-git
pkgver=20111204
pkgrel=1
pkgdesc="Curses-based system monitor"
arch=('i686' 'x86_64')
url="https://github.com/nicolargo/"
license=('gpl')
depends=('ncurses' 'pystatgrab')

_gitroot="https://github.com/nicolargo/glances.git"
_gitname="glances"

build() {
  cd $srcdir

  if [ -d $_gitname ]; then
    cd $_gitname && git pull origin || return 1
  else
    git clone $_gitroot || return 1
  fi
  
  cd $srcdir/$_gitname

  ./configure || return 1

  make || return 1

  sed -i 's/python/env python2/' $srcdir/$_gitname/src/glances.py
}

package() {
  cd $srcdir/$_gitname

  make DESTDIR=$pkgdir install || return 1
}

