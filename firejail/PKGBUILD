pkgname=firejail
pkgver=0.9.12.2
pkgrel=1
pkgdesc="Linux namespaces sandbox program"
arch=(i686 x86_64)
license=(GPL2)
url=https://l3net.wordpress.com/projects/firejail/
source=(http://sourceforge.net/projects/$pkgname/files/$pkgname/$pkgname-$pkgver.tar.bz2)
sha256sums=('9e1c9df6962ba23df65a78b7bbc6066f6c998c3e268c9ba1302ddb56be00e2d8')

build() {
	cd $pkgname-$pkgver
	# fix build
	export CFLAGS=${CFLAGS/-fsanitize=undefined/}
	./configure --prefix=/usr
	make
}

package() {
	cd $pkgname-$pkgver
	sed -i 's| $1| "${DESTDIR}"/$1|g;s| /etc| "${DESTDIR}"/etc|g' -i install.sh
	make DESTDIR="${pkgdir}" install
}
