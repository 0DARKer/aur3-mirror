# Maintainer: Dennis Fink <the_metalgamer@hackerspace.lu>

pkgname=python2-translitcodec
pkgver=0.3
pkgrel=1
pkgdesc="Unicode to 8-bit charset transliteration codec"
arch=('any')
url="http://pypi.python.org/pypi/translitcodec/"
license=('MIT')
depends=('python2')
replaces=('python-translitcodec')
source=("http://pypi.python.org/packages/source/t/translitcodec/translitcodec-${pkgver}.tar.gz")
md5sums=("2227e9f79fd3c570d49f8c5cc5db5812")

build() {
  cd "$srcdir/translitcodec-$pkgver"
  python2 setup.py install --root=$pkgdir
}

