# Contributor: Reverie <reverie@takhis.net>

pkgname=wordnet
pkgver=3.0
pkgrel=10
pkgdesc="An Electronic Lexical Database from Princeton University"
arch=(i686 x86_64 ppc)
url="http://wordnet.princeton.edu/"
license="custom"
depends=('tcl' 'tk')
source=(http://wordnetcode.princeton.edu/3.0/WordNet-3.0.tar.bz2 wordnet.desktop wordnet.png)
md5sums=('89b4db7c6840ce69a8e315a3f83d996b' '0211d836cccb72e8aabe88c5e47a8b1e' '2c6d64f7d28062944d6969deb8dee9ab')

build() {
  cd $startdir/src/WordNet-$pkgver
  ./configure --prefix=/usr --mandir=/usr/share/man
  sed 's:#define DEFAULTPATH "/usr/dict":#define DEFAULTPATH "/usr/share/wordnet/dict":' -i config.h
  sed 's:"/usr/local/WordNet-3.0/lib/wnres":"/usr/share/wordnet/wnres":' -i src/wnb
  make || return 1
  make DESTDIR=$startdir/pkg install
  mv $startdir/pkg/usr/doc $startdir/pkg/usr/share/wordnet
  mv $startdir/pkg/usr/dict $startdir/pkg/usr/share/wordnet/dict
  mv $startdir/pkg/usr/lib/wnres $startdir/pkg/usr/share/wordnet/wnres
  rm -fr $startdir/pkg/usr/include/tk
  install -D -m644 $startdir/src/wordnet.desktop $startdir/pkg/usr/share/applications/wordnet.desktop
  install -D -m644 $startdir/src/wordnet.png $startdir/pkg/usr/share/pixmaps/wordnet.png
  install -D -m644 COPYING $startdir/pkg/usr/share/licenses/$pkgname/COPYING
}
