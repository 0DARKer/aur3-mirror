# Contributor: Gaetan Bisson <gaetan.bisson@loria.fr>
pkgname=pigale
pkgver=1.3.9
pkgrel=2
pkgdesc="A graph editor and a C++ algorithm library essentially concerned with planar graphs."
arch=('i686')
url="http://www.ehess.fr/centres/cams/person/hf/pigale.html"
license=('GPL')
depends=('qt' 'freeglut')
makedepends=('qt')
source=(http://downloads.sourceforge.net/pigale/$pkgname-$pkgver.tar.gz)
md5sums=('d3cbba69d3a64e0449396731a19f005a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  QINC=/usr ./configure --prefix=$pkgdir/usr/share/pigale || return 1
  make || return 1
  make install
  mkdir -p $pkgdir/usr/{bin,lib}
  mv $pkgdir/usr/share/pigale/bin/pigale $pkgdir/usr/bin/
  mv $pkgdir/usr/share/pigale/lib/libtgraph.a $pkgdir/usr/lib/
}
