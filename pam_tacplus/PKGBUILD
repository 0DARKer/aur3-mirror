# Contributor: fuzzix@gmail.com
# Based on beta branch build: http://aur.archlinux.org/packages.php?ID=17178

pkgname=pam_tacplus
pkgver=1.3.6
pkgrel=1
pkgdesc="Cisco TACACS+ protocol client library and PAM module"
arch=(i686 x86_64)
url=http://sourceforge.net/projects/tacplus/
license=(GPL)
optdepends=()
source=("http://sourceforge.net/projects/tacplus/files/pam_tacplus-1.3.6.tar.gz")
md5sums=('b96968f14b1095af589f96997e78b867')

build() {
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr --exec-prefix=/usr
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}


