# Maintainer: Ivan Pulido < ijpulidos at riseup.net >

pkgname=python-plotly
pkgver=0.5
pkgrel=1
pkgdesc='Python API for Plotly, a collaborative data analysis and graphing tool on the cloud.'
arch=('any')
url='https://plot.ly/'
license=('MIT')
depends=('python' 'python-requests')
source=("https://pypi.python.org/packages/source/p/plotly/plotly-0.5.tar.gz")
md5sums=('b7297d72fdb7b7dccf7415d1a945ba4d')

build() {
  cd plotly-${pkgver}

  python setup.py build
}

package() {
  cd plotly-${pkgver}

  python setup.py install \
    --root ${pkgdir}
}
