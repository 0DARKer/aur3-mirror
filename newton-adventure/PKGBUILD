# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=newton-adventure
pkgver=1.10
pkgrel=1
pkgdesc="A 2D platform game where the hero can change gravity direction"
arch=('i686' 'x86_64')
url="http://devnewton.bci.im/projects/newton_adventure/doc/trunk/www/index.wiki"
license=('BSD' 'CC-BY-SA')
depends=('java-environment')

if [ "${CARCH}" = 'x86_64' ]; then
  source=(http://chiselapp.com/user/devnewton/repository/newton_adventure/doc/trunk/www/downloads/newton_adventure-$pkgver-1.x86_64.rpm)
  md5sums=('a3a9b5922ed319b4e682d1d61daf1a46')
elif  [ "${CARCH}" = 'i686' ]; then
  source=(http://chiselapp.com/user/devnewton/repository/newton_adventure/doc/trunk/www/downloads/newton_adventure-$pkgver-1.i686.rpm)
  md5sums=('4f42f900990d5e307296cbea3e63701f')
fi


package() {
  cp -r $srcdir/* $pkgdir
  
  # Fix Category
  sed -i 's_Game;_Game;ArcadeGame_' $pkgdir/usr/share/applications/newton_adventure.desktop
}