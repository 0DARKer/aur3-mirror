# Maintainer: Robert Orzanna <orschiro at gmail dot com>

pkgname=pomodoro-libnotify-timer
pkgver=1.0
pkgrel=1
pkgdesc="Simple Pomodoro timer commands for your Bash shell with libnotify support"
arch=('any')
url="https://gist.github.com/orschiro/9ff8b7ddc51f0d706be2"
license=('GPL2')
depends=('libnotify' 'libpulse')
source=('https://gist.githubusercontent.com/orschiro/9ff8b7ddc51f0d706be2/raw/199452ab4062c04397629cd8223017dfd426f61c/pomodoro-break.sh'
        'https://gist.githubusercontent.com/orschiro/9ff8b7ddc51f0d706be2/raw/7b2858af946cb63db6ccbf809cce986a6164618a/pomodoro-work.sh')
md5sums=('3eb5a92dea4c8a38e97f121285f3b0a8'
         '9404332126452fcedcb6e6679f754400')

package() {
    install -d -m755 "$pkgdir/usr/bin"
    install -m755 "$srcdir/pomodoro-break.sh" "$pkgdir/usr/bin/pomodoro-break"
    install -m755 "$srcdir/pomodoro-work.sh" "$pkgdir/usr/bin/pomodoro-work"
}
