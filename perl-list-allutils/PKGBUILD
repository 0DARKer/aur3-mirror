# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=perl-list-allutils
_realname=List-AllUtils
pkgver=0.02
pkgrel=1
pkgdesc="Combines List::Util and List::MoreUtils in one bite-sized package"
arch=('any')
license=('GPL' 'PerlArtistic')
url="http://search.cpan.org/~drolsky/List-AllUtils"
options=(!emptydirs)
depends=('perl-list-moreutils')
provides=('perl-list-allutils=0.01')

source=(http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/${_realname}-$pkgver.tar.gz)
md5sums=('db54e18b6dd61acdff0210a24127719c')

build() {
  cd ${_realname}-$pkgver
  perl Build.PL installdirs=vendor destdir="$pkgdir/"
  perl Build 
}
package() {
  cd ${_realname}-$pkgver
  perl Build install 

  find ${pkgdir} -name perllocal.pod -delete 
  find ${pkgdir} -name .packlist -delete 
}

