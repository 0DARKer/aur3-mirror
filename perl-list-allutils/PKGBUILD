pkgname=perl-list-allutils
pkgver=0.08
pkgrel=1
pkgdesc='Perl package that combines List::Util and List::MoreUtils in one bite-sized package'
arch=('any')
url='http://search.cpan.org/dist/List-AllUtils'
license=('Artistic2.0')
depends=('perl>=5.19.3' 'perl-list-moreutils>=0.28')
source=(http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/List-AllUtils-0.08.tar.gz)
options=(!emptydirs)
md5sums=('0becef45aaf3556685ab798a132c014e')

build() {
	cd List-AllUtils-0.08
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

check() {
	cd List-AllUtils-0.08
	make test
}

package() {
	cd List-AllUtils-0.08
	make install DESTDIR="$pkgdir"
	find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
