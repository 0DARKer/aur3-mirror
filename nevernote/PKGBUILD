# Maintainer: Dan Serban
# Contributor: MatToufoutu <mattoufootu[at]gmail[dot]com>

pkgname=nevernote
pkgver=0.99
pkgrel=1
pkgdesc="A clone of Evernote designed to run on Linux"
url=http://nevernote.sourceforge.net/
arch=(i686 x86_64)
license=(GPL)
depends=(java-runtime libpng12)
_filearch=$(echo ${CARCH} | sed 's#i686#i386#;s#x86_64#amd64#')
source=("http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}_${_filearch}.tar.gz")
_32bit_md5sum="87d56f4cbf76306dd1122acd64cba4af"
_64bit_md5sum="3dc1caf03e62640ced6c61d8fc5971a3"
if [ "$CARCH" == "i686" ]; then md5sums=${_32bit_md5sum}; else md5sums=${_64bit_md5sum}; fi

build()
{
  cd ${pkgname}
  mv usr "$pkgdir/"
  cd "$pkgdir/usr/bin"
  mv nevernote.sh nevernote
}
