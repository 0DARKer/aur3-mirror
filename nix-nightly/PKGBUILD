# Maintainer: L42y <423300@gmail.com>
pkgname=nix-nightly
pkgver=1.0
_basename=nix
_pkgrev=pre26015
_pkgbuild=920246
pkgrel=1
pkgdesc="Nix is a purely functional package manager. "
url="http://nixos.org/"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libxml2' 'libxslt' 'docbook-xsl' 'sqlite3' 'gc')
source=(http://hydra.nixos.org/build/${_pkgbuild}/download/4/${_basename}-${pkgver}${_pkgrev}.tar.bz2)
md5sums=('ff14891c2829581c1448f215f7582e51')

build() {
 cd "${srcdir}/${_basename}-${pkgver}${_pkgrev}"
 ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --enable-gc --with-bzip2=/bin --with-sqlite=/usr/bin --with-store-dir=/var/nix/store
 make
}

package() {
 cd "${srcdir}/${_basename}-${pkgver}${_pkgrev}"
 make DESTDIR="${pkgdir}" install
}
# vim:set ts=2 sw=2 et:
