# Maintainer: Dirk Sohler <spam@0x7be.de>
# vim: ts=4:sw=4

pkgname=mkpassword-git
pkgver=20121214
pkgrel=1
pkgdesc='A simple secure password generator.'

url='https://dev.0x7be.de/mkpassword'
arch=('any')
license=('GPL')

depends=('python>=3.0')
makedepends=('git')

_gitroot='https://github.com/dsohler/mkpassword'
_gitname='master'

build() {
	cd $srcdir
	msg "Connecting to GIT server...."

	if [[ -d "$_gitname" ]]; then
		cd "$_gitname" && git pull origin
		msg "The local files are updated."
	else
		git clone "$_gitroot" "$_gitname"
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting build..."

	rm -rf "$srcdir/$_gitname-build"
	git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
	cd "$srcdir/$_gitname-build"
	install -Dm 755 mkpassword.py $pkgdir/usr/bin/mkpassword
}
