pkgname=msn-pecan
pkgver="0.1.1"
pkgrel="1"
pkgdesc="A fork of the MSN protocol plugin for libpurple (Pidgin/Finch/Adium/haze)."
arch=('i686' 'x86_64')
url="http://code.google.com/p/msn-pecan/"
license=('GPL')
depends=('libpurple')
makedepends=('pkgconfig')
install=msn-pecan.install
source=(http://msn-pecan.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2)
md5sums=('62dc9b26ebf9d4327671eebb1a0163c4')
 
build() {
cd "${srcdir}/${pkgname}-${pkgver}"
 
make || return 1
make DESTDIR="${pkgdir}" install
make DESTDIR="${pkgdir}" install_locales
}
 
