# Contributor: Nick B <Shirakawasuna at gmail _dot_com>
pkgname=holotz-castle
pkgver=1.3.14
pkgrel=1
pkgdesc="A tremendously exciting platform game."
arch=('i686')
url="http://www.mainreactor.net"
license=('GPL2')
depends=('gcc-libs' 'sdl_mixer' 'sdl_ttf' 'sdl_image')
source=(http://www.mainreactor.net/holotzcastle/download/holotz-castle-$pkgver-src.tar.gz
	holotz-castle-archpatch-1.diff)
md5sums=('d304b73cc01576325abc31a29a949f11'
         '297c293f80f22e6a4d9bf5e8f1c1685e')

build() {

cd $startdir/src/holotz-castle-$pkgver-src
patch -p1 <../holotz-castle-archpatch-1.diff
make HC_BASE=/usr/share/holotz-castle/ HC_BIN_DIR=/usr/bin/ || return 1
make HC_BASE=/usr/share/holotz-castle/ HC_BIN_DIR=/usr/bin/ DESTDIR=$startdir/pkg install || return 1
}
