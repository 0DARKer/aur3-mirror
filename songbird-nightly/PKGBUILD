# Contributor: Aaron 'venisonslurpee' Laursen <venisonslurpee@gmail.com> 

pkgname=songbird-nightly
pkgver=1915
_pkgver=1.10.0a
pkgrel=1
pkgdesc="Bleeding-edge Songbird, the digital desktop media player (jukebox) mashed-up with web browser, powered by Mozilla."
arch=('i686')
url="http://www.songbirdnest.com/"
license=('GPL2')
depends=('libxrender' 'libxext' 'libx11' 'libxmu' \
         'gstreamer0.10' 'gstreamer0.10-base' 'gtk2' 'libxt' \
	 'sqlite3' 'nss' 'libidl2' 'gstreamer0.10-good-plugins')
optdepends=('gstreamer0.10-bad-plugins' 'gstreamer0.10-ugly-plugins')
provides=('songbird')
conflicts=('songbird' 'songbird-bin' 'songbird-svn')
install=(songbird-nightly.install)
source=(http://developer.songbirdnest.com/builds/trunk/${pkgver}/Songbird_${_pkgver}-${pkgver}_linux-i686.tar.gz \
	Songbird.desktop songbird-launcher.sh)
md5sums=('c831eb6ad15391345f036a354f45e7d4'
         '02ffd66cd34054654135b25d8f82b906'
         'afc2ad4ad4954e98af3703a1a07cd574')


build() {
  cd ${startdir}/src/Songbird_build-${pkgver} || return 1
  
  install -d --group=users ${startdir}/pkg/opt/songbird
  cp -a ${startdir}/src/Songbird_build-${pkgver}/* \
        ${startdir}/pkg/opt/songbird || return 1
  chmod 755 ${startdir}/pkg/opt/songbird/songbird
  chmod 755 ${startdir}/pkg/opt/songbird/songbird-bin
  chmod 755 ${startdir}/pkg/opt/songbird/xulrunner/xulrunner
  chmod 755 ${startdir}/pkg/opt/songbird/xulrunner/xulrunner-bin
  chmod -R a+r ${startdir}/pkg/opt/songbird
  install -D ${startdir}/src/Songbird_build-${pkgver}/chrome/icons/default/default.xpm \
  	     ${startdir}/pkg/usr/share/pixmaps/Songbird.xpm
  install -D -m644 ${startdir}/src/Songbird.desktop \
  	     	   ${startdir}/pkg/usr/share/applications/Songbird.desktop
  install --directory ${startdir}/pkg/usr/bin
  
  ## fixing the problem with system-wide installs:
  find ${startdir}/pkg/opt/songbird -type d -exec chmod 755 {} \;
  install --directory ${startdir}/pkg/usr/bin
  install ${startdir}/src/songbird-launcher.sh ${startdir}/pkg/usr/bin/songbird
}
