pkgname='perl-module-find'
pkgver='0.10'
pkgrel='2'
pkgdesc="Find and use installed modules in a (sub)category"
arch=('any')
url='http://search.cpan.org/dist/Module-Find'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/C/CR/CRENZ/Module-Find-0.10.tar.gz')
md5sums=('bdc4687d0782157e9335f4dc31369d01')

build() {
  DIST_DIR="${srcdir}/Module-Find-0.10"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

