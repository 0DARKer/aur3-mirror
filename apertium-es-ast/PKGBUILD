# Contributor: Kevin Brubeck Unhammer <unhammer@gmail.com>
# Maintainer: Kevin Brubeck Unhammer <unhammer@gmail.com>
pkgname=apertium-es-ast
pkgver=1.0.0
pkgrel=1
pkgdesc="Apertium language data for the Spanish-Asturian translator."
url="http://apertium.org"
license=('GPL')
makedepends=('pkgconfig')
depends=('lttoolbox>=3.0' 'apertium>=3.0')
arch=('i686' 'x86_64')
source=("http://downloads.sourceforge.net/sourceforge/apertium/apertium-es-ast-${pkgver}.tar.gz"
        "Makefile.am.patch"
        "Makefile.in.patch")
md5sums=('20be6eae60bd16bae04c93e761724e1c' 'a6c52453d4dd30598f907e80b86ba279'\
         'aeb64e861fcd397b03d73bf4b24f9e2f')

build() {
  patch -p0 < Makefile.am.patch
  patch -p0 < Makefile.in.patch

  mkdir -p "$pkgdir/usr/share/apertium/modes"

  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}