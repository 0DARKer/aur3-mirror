# Maintainer: tuftedocelot@fastmail.fm
_pkgname=yubioath-desktop
pkgname=yubico-${_pkgname}-git
pkgver=76
pkgrel=1
pkgdesc="Crossplatform graphical user interface to generate one-time passwords."
arch=('i686' 'x86_64')
url="https://developers.yubico.com/yubioath-desktop/"
license=('GPL')
depends=('python2')
makedepends=('git' 'python2-pyside' 'python2-pyscard' 'python2-pbkdf2')
source="git+https://github.com/Yubico/yubioath-desktop.git"
md5sums=('SKIP')

pkgver() {
	cd ${_pkgname}
    git rev-list --count HEAD
}

package() {
    mkdir -p ${pkgdir}/usr/bin
    echo "python2 /usr/lib/python2.7/site-packages/yubicoauthenticator/yubico_authenticator.py" > ${pkgdir}/usr/bin/yubioath-desktop
    echo "python2 /usr/lib/python2.7/site-packages/yubicoauthenticator/yubico_authenticator.py --disable-systray" > ${pkgdir}/usr/bin/yubioath-desktop-disable-systray
    chmod +x ${pkgdir}/usr/bin/yubioath-desktop
    chmod +x ${pkgdir}/usr/bin/yubioath-desktop-disable-systray

	cd "$_pkgname"
	python2 setup.py install --root=${pkgdir}
}
