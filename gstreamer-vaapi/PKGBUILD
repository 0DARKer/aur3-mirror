# Maintainer: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=gstreamer-vaapi
pkgver=0.3.1
pkgrel=1
pkgdesc="collection of VA-API based plugins for GStreamer and helper libraries"
url="http://gitorious.org/vaapi/gstreamer-vaapi"
arch=(i686 x86_64)
license=('GPL2')
depends=('gstreamer0.10-bad-git' 'ffmpeg')
optdepends=('xvba-video: for ATI cards'
	    'vdpau-video: for nVidia cards')
source=("http://huulivoide.pp.fi/Arch/${pkgname}-${pkgver}.tar.xz")
options=('!libtool')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --enable-vaapisink-glx --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}

md5sums=('18fbc1795e5048e7f2f4ecc2b8135521')
