# Maintainer: Juan Miguel Cejuela <jmcejuela@ashrentum.net>
pkgname=python-apsw
pkgver=3.7.4_r1
pkgrel=1
pkgdesc="Python wrapper for SQLite"
arch=('i686' 'x86_64')
url="http://code.google.com/p/apsw/"
license=('MIT')
depends=('python' 'sqlite3')
source=("http://apsw.googlecode.com/files/apsw-3.7.4-r1.zip" 'LICENSE')

md5sums=('f67bdae71dbc8f6ee4bd3050f1953c50'
         'efc704d50cb39441d00f9dc76cbe6665')

build() {
  cd $srcdir/apsw-3.7.4-r1
  python setup.py install --root=$pkgdir/

  install -D -m644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

