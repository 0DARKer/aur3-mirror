# Maintainer sanderd < sanderd17 AT gmail DOT com >

pkgname=bdf-bitocra
pkgver=0.9.2L
pkgrel=2
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="A monospace bit font, inspired by OCR-A. Created to be very readable on small sizes"
url="http://ubuntuforums.org/showthread.php?t=1846868"
arch=('any')
source=(https://github.com/ninjaaron/bitocra/tarball/master)
license=('OFL 1.1')
install=$pkgname.install
md5sums=('10eae91cd26938636e29b86af1f199d5')

build()
{
  mkdir -p $pkgdir/usr/share/fonts/misc
  cp $srcdir/ninjaaron-bitocra-b151d43/*.bdf $pkgdir/usr/share/fonts/misc
}


