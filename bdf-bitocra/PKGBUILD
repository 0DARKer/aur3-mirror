# Maintainer sanderd < sanderd17 AT gmail DOT com >

pkgname=bdf-bitocra
pkgver=0.9.2
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="A monospace bit font, based on OCR-A. Created to be very readable on small sizes"
url="http://ubuntuforums.org/showthread.php?t=1846868"
arch=('any')
source=(https://github.com/ninjaaron/bitocra/tarball/master)
license=('unknown')
install=$pkgname.install
md5sums=('121ce4776174b453292da3c4720da947')

build()
{
  mkdir -p $pkgdir/usr/share/fonts/misc
  cp $srcdir/ninjaaron-bitocra-697209f/*.bdf $pkgdir/usr/share/fonts/misc
}


