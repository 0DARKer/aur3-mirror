# Contributor: Leif Warner <abimelech@gmail.com>
pkgname=simple-build-tool
pkgver=0.7.4
pkgrel=1
pkgdesc="SBT: a Scala build tool"
arch=(any)
url="http://code.google.com/p/simple-build-tool/"
license=('BSD')
depends=('java-runtime')

source=(http://simple-build-tool.googlecode.com/files/sbt-launch-$pkgver.jar sbt.sh)
noextract=('sbt-launch-$pkgver.jar')

md5sums=('8903fb141037056a497925f3efdb9edf'
         '2feabb51f1436ed5fec5bda3b70f5d6e')

build() {
  install -d $pkgdir/usr/share/java || return 1
  install -m644  $srcdir/sbt-launch-$pkgver.jar $pkgdir/usr/share/java/sbt-launch-$pkgver.jar || return 1
  install -D -m755 $srcdir/sbt.sh $pkgdir/usr/bin/sbt || return 1
}

# vim:set ts=2 sw=2 et:
