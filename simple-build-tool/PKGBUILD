# Contributor: Leif Warner <abimelech@gmail.com>
pkgname=simple-build-tool
pkgver=0.7.5
pkgrel=1
pkgdesc="SBT: a Scala build tool"
arch=(any)
url="http://code.google.com/p/simple-build-tool/"
license=('BSD')
depends=('java-runtime')

source=(http://simple-build-tool.googlecode.com/files/sbt-launch-$pkgver.jar sbt.sh)
noextract=('sbt-launch-$pkgver.jar')

md5sums=('bb5f6314b8189210ae2b9b463b8561c8'
         '87098d12e3b9a983251732513cbe5888')

build() {
  install -d $pkgdir/usr/share/java 
  install -m644  $srcdir/sbt-launch-$pkgver.jar $pkgdir/usr/share/java/sbt-launch-$pkgver.jar 
  install -D -m755 $srcdir/sbt.sh $pkgdir/usr/bin/sbt 
}

# vim:set ts=2 sw=2 et:
