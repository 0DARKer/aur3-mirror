# Contributor: Scott Garrett <Wintervenom@gmail.com>

pkgname=dmenu-launch
pkgver=0.5.1
pkgrel=1
pkgdesc="A simple Dmenu-based application launcher.  Launches binaries and XDG shortcuts."
url="http://wintervenom.pastebin.com"
arch=('i686' 'x86_64')
license=('GPL')
depends=('dmenu')
md5sums=('07708902ac0e26ecd249926c983cbd7b')
source=('dmenu-launch')

package() {
    cd $srcdir
    install -d -m755 $pkgdir/usr/bin
    install -m755 $srcdir/dmenu-launch $pkgdir/usr/bin/dmenu-launch
}

build() {
    return 0
}
