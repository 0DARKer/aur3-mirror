pkgname=siril
pkgver=0.9a
pkgrel=1
pkgdesc="Siril is an astronomical image processing software for Linux. (IRIS clone)"
arch=('i686' 'x86_64')
license=('GPLv3')
depends=('gtk3' 'fftw' 'cfitsio' 'gsl')
makedepends=('subversion')
url="http://free-astro.vinvin.tf/index.php/Siril"
optdepends=('dcraw: RAW files support'
'libtiff: TIFF import/export support (required at compile time)'
'libjpeg: JPEG import/export support (required at compile time)'
'libpng: PNG import/export support (required at compile time)'
)

source=("${pkgname}::svn+https://free-astro.vinvin.tf/svn/siril")
sha1sums=('SKIP')

build() {
	cd "${pkgname}"
	aclocal && autoconf && autoheader && automake --add-missing
	./configure --prefix=/usr
	make
}

package() {
	cd "${pkgname}"
	make DESTDIR="${pkgdir}" install
	# don't forget .glade file and pixmaps in distrib
}

