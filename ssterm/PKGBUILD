# Maintainer: Vanya A. Sergeev <vsergeev at gmail dot com>
pkgname=ssterm
pkgver=1.2
pkgrel=1
pkgdesc="A console-based serial port terminal with curses and stdin/stdout user interfaces."
arch=('i686' 'x86_64')
url="http://dev.frozeneskimo.com/software_projects/ssterm"
license=('GPL')
depends=('ncurses')
source=(https://github.com/downloads/vsergeev/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('67cf4531b275eb84e089e02288d58d2d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX="/usr" DESTDIR="$pkgdir" install
}
