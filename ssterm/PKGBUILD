pkgname=ssterm
pkgver=1.7
pkgrel=1
epoch=
pkgdesc="A simple console-based serial port terminal with support for split hexadecimal/ASCII representation, color-coding, and more"
arch=('any')
url="http://theanine.io/projects/ssterm"
license=('GPL3')

_pkgname=ssterm
_pkgver=v${pkgver}
_pkgsrcdir=${pkgname}-${pkgver}
_pkgurl="https://github.com/vsergeev/${_pkgname}"

depends=('python2')
source=("${_pkgurl}/archive/${_pkgver}.tar.gz")

md5sums=('8d925def3c7f1bbe89a50118051e54da')
sha1sums=('5e0a03acd3176313ab735eb5b81295a8355470c7')
sha256sums=('479ee64ebf86b530dc06380f5432835a795eb0a186e96934f8dc8dbc060cc895')
sha384sums=('cf39d57919db48867e3e46a521dff1c0c4de157ab966bbacc3852884b92e143b45dd610e6135c1385bee233c638a8f4f')
sha512sums=('0286994d83158f12916f3e7c3bad422601fcb9b315ceea7739a24c9e3fe4c78671774e7c805a440c3de73d0f0e681ace7ba633e283ee6416ba22fafe346654c3')

prepare() {
    cd "${srcdir}/${_pkgsrcdir}"
}

build() {
    cd "${srcdir}/${_pkgsrcdir}"
    make all
}

package() {
    cd "${srcdir}/${_pkgsrcdir}"
    make PREFIX="/usr" DESTDIR="${pkgdir}/" install
}

