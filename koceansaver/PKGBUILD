# Contributor: Joffrey TISSERON <tisseron.joffrey@aliceadsl.fr>

pkgname=koceansaver
_name=KOceanSaver
pkgver=0.5
pkgrel=1
pkgdesc="A nice OpenGL KDE screensaver."
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php/KOceanSaver?content=95863"
license=('GPL2')
depends=('kdebase-workspace' 'kdelibs>=4.7' 'libgl')
makedepends=('cmake' 'qt')
source=(http://sourceforge.net/projects/koceansaver/files/koceansaver/koceansaver%200.5/KOceanSaver-0.5.tar.gz)
md5sums=('df6ba48039f799c89aea9ee7631fbfcc')

build() {
  cd $srcdir/$_name
  cmake -DCMAKE_INSTALL_PREFIX=/usr CMakeLists.txt
  make
}

package() {
  cd $srcdir/$_name
  make DESTDIR="$pkgdir" install
}