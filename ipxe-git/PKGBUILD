# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=ipxe-git
pkgver=20111230
pkgrel=1
pkgdesc="iPXE open source boot firmware - git checkout"
arch=('i686' 'x86_64')
url="http://www.ipxe.org/"
license=('GPL')
makedepends=('git')
provides=(ipxe)
conflicts=(ipxe)
source=(ipxe_dns.diff)

_gitroot="git://git.ipxe.org/ipxe.git"
_gitname="ipxe"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build/"
  
  # fix dns query, there's a double null byte
  patch -Np1 < ${srcdir}/ipxe_dns.diff
  
  cd "${srcdir}/${_gitname}-build/src"

  make
  install -D -m644 bin/ipxe.dsk ${pkgdir}/usr/share/ipxe/ipxe.dsk
  install -D -m644 bin/ipxe.usb ${pkgdir}/usr/share/ipxe/ipxe.usb
  install -D -m644 bin/ipxe.iso ${pkgdir}/usr/share/ipxe/ipxe.iso
  install -D -m644 bin/undionly.kpxe ${pkgdir}/usr/share/ipxe/undionly.kpxe
}
md5sums=('7f27509a1ba72a84db43b30dc536e45b')
