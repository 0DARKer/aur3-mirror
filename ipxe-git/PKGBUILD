# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=ipxe-git
pkgver=20120319
pkgrel=1
pkgdesc="iPXE open source boot firmware - git checkout"
arch=('i686' 'x86_64')
url="http://www.ipxe.org/"
license=('GPL')
makedepends=('git')
provides=('ipxe')
conflicts=('ipxe')
install=ipxe.install
source=('grub')
backup=('etc/grub/20_ipxe')

_gitroot="git://git.ipxe.org/ipxe.git"
_gitname="ipxe"

build() {
	cd "${srcdir}"
	msg "Connecting to GIT server...."

	if [ -d ${_gitname} ] ; then
		cd ${_gitname} && git pull origin
		msg "The local files are updated."
	else
		git clone ${_gitroot} ${_gitname}
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	rm -rf "${srcdir}/${_gitname}-build"
	git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"

	cd "${srcdir}/${_gitname}-build/src"

	make
}

package() {
	install -D -m755 ${srcdir}/grub ${pkgdir}/etc/grub.d/20_ipxe

	cd "${srcdir}/${_gitname}-build/"

	install -D -m644 COPYING ${pkgdir}/usr/share/doc/ipxe/COPYING
	install -D -m644 COPYRIGHTS ${pkgdir}/usr/share/doc/ipxe/COPYRIGRIGHTS

	cd "${srcdir}/${_gitname}-build/src"

	install -D -m644 bin/ipxe.dsk ${pkgdir}/usr/share/ipxe/ipxe.dsk
	install -D -m644 bin/ipxe.usb ${pkgdir}/usr/share/ipxe/ipxe.usb
	install -D -m644 bin/ipxe.iso ${pkgdir}/usr/share/ipxe/ipxe.iso

	install -D -m644 bin/undionly.kpxe ${pkgdir}/usr/lib/ipxe/undionly.kpxe

	install -D -m644 bin/ipxe.lkrn ${pkgdir}/boot/ipxe/ipxe.lkrn
}

sha256sums=('c2fc94baf96dfd180b9359f0eec089a3ac6f78768c95c8e03aaae263420951dc')
