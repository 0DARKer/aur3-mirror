pkgname=zsh-systemctl
pkgver=20110827
pkgrel=1
pkgdesc="ZSH functions to tab-complete systemctl (part of systemd) functions and services"
arch=('i686' 'x86_64')
license=('GPL')
url="https://github.com/foudfou"
depends=(zsh)
source=(https://github.com/foudfou/zsh-completion/raw/master/_systemctl)
md5sums=('51e1a3bf0499b6f0ea2e2b616a7ae8b1')

package() {
  install -d -m755 ${pkgdir}/usr/share/zsh/site-functions/
  install -m644 _systemctl ${pkgdir}/usr/share/zsh/site-functions/_systemctl
}
