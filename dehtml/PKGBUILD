# Contributor: Frst21 <bud23@vp.pl> 

pkgname=dehtml
pkgver=1.7
pkgrel=1
pkgdesc="Dehtml removes HTML constructs from documents for indexing, spell checking and so on."
arch=(i686 x86_64)
url="http://www.moria.de/~michael/dehtml/"
license="GPL"
provides=('dehtml')
md5sums=('b844c737a5e485de61ee6df895603326')
source=(http://www.moria.de/~michael/dehtml/dehtml-$pkgver.tar.gz)

build() {
  cd $startdir/src/dehtml-$pkgver
  ./configure \
  --prefix=/usr \
  --sysconfdir=/etc 
  make || return 1
  make DESTDIR=$startdir/pkg install
}


