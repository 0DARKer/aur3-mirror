_basename_=netbeans
_edname_=javase
pkgname=${_basename_}-${_edname_}
pkgver=7.2.1
_pkgdate_=201210100934
pkgrel=1
pkgdesc="Oracle's Java (SE) IDE"
arch=("any")
url="http://netbeans.org"
license=("CDDL")
depends=("java-environment")
conflicts=("${_basename_}")
install=${pkgname}.install
options=(!strip)
source=(http://download.${_basename_}.org/${_basename_}/${pkgver}/final/zip/${_basename_}-${pkgver}-${_pkgdate_}-ml-${_edname_}.zip)

package() {
	cd "${srcdir}"

	# Removals
	rm ${_basename_}/bin/${_basename_}.exe

	# Directories
	install -d "${pkgdir}"/usr/share/${_basename_} "${pkgdir}"/usr/bin

	# Files
	cp -r ${_basename_}/* "${pkgdir}"/usr/share/${_basename_}/
	ln -s /usr/share/${_basename_}/bin/${_basename_} "${pkgdir}"/usr/bin/${_basename_}

	# Desktop
	install -D -m644 "${startdir}"/${_basename_}.desktop "${pkgdir}"/usr/share/applications/${_basename_}.desktop
}

sha1sums=('d1d4c11523e0c348b50234d07c0719fa316b9919')
