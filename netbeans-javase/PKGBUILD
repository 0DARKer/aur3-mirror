# NetBeans-JavaSE Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>
# Contributor: Timm Preetz <timm@preetz.us>
# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

basename=netbeans
edname=javase
pkgname=${basename}-${edname}
pkgver=6.9.1
pkgrel=1
pkgdesc="A Java (SE) IDE"
arch=("any")
url="http://${basename}.org"
license=("CDDL")
depends=("java-environment")
conflicts=("${basename}")
#install=${pkgname}.install
source=("http://download.${basename}.org/${basename}/6.9.1/final/zip/${basename}-6.9.1-201007282301-ml-${edname}.zip")

package() {
	cd "${srcdir}"

	# Removals
	rm ${basename}/bin/${basename}.exe

	# Directories
	install -d "${pkgdir}"/usr/share/${basename} "${pkgdir}"/usr/bin

	# Files
	cp -r ${basename}/* "${pkgdir}"/usr/share/${basename}/
	ln -s /usr/share/${basename}/bin/${basename} "${pkgdir}"/usr/bin/${basename}

	# Desktop
	install -D -m644 "${startdir}"/extra/${basename}.desktop "${pkgdir}"/usr/share/applications/${basename}.desktop
}

sha1sums=('c1c9dbb100857bef94f0485f3381c47589ca012f')
