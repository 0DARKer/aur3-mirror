pkgname=wink
pkgver=1.5
_pkgver=15
pkgrel=2
pkgdesc="Tutorial and Presentation creation software, primarily aimed at creating tutorials on how to use software."
arch=('i686')
url="http://www.debugmode.com/wink/"
license=('FREE')
#depends=('')
source=(http://yet.another.linux-nerd.com/wink/download/$pkgname$_pkgver.tar.gz wink.desktop wink.gif)
md5sums=('be2d80bcf3fdfe1a403674d789aed9db' '1fe5de3153449bca1ae3bef2fc4530fa' 'efd97b7d133234db5748678c99c8babb')
build() {
  echo $pkgdir/opt/wink > pathfile
  mkdir $pkgdir/opt
  ./installer.sh < pathfile > /dev/null
  mkdir -p $pkgdir/usr/share/applications/
  cp wink.desktop $pkgdir/usr/share/applications/wink.desktop
  cp wink.gif $pkgdir/opt/wink/wink.gif
}

