# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=kf5-phonon-git
pkgver=v4.6.0.384.g2ec59ff
pkgrel=1
pkgdesc='The multimedia framework for KDE'
arch=('i686' 'x86_64')
url='http://phonon.kde.org/'
license=('LGPL')
depends=('qt5-quick1' 'phonon-backend' 'libpulse')
optdepends=('pulseaudio: PulseAudio support')
makedepends=('cmake' 'automoc4' 'pulseaudio' 'git' 'qt5-tools')
provides=('kf5-phonon-qt5')
conlicts=('kf5-phonon')
source=(git://anongit.kde.org/phonon.git)
md5sums=('SKIP')

pkgver() {
  cd phonon
  git describe --always | sed 's|-|.|g' 
}

build() {
  mkdir -p build
  cd build
  cmake ../phonon \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DPHONON_BUILD_PHONON4QT5=ON
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
