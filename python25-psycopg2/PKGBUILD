# Maintainer: Tocer Deng <tocer.deng@gmail.com>

pkgname=python25-psycopg2
pkgver=2.0.13
pkgrel=1
pkgdesc="psycopg2 compiled with python25"
arch=('i686' 'x86_64')
url="http://initd.org/projects/psycopg2"
license=('GPL')
depends=('python25' 'postgresql-libs')
source=(http://initd.org/pub/software/psycopg/psycopg2-$pkgver.tar.gz)
md5sums=('f520260595f4fcf035d26cfd57a75f19')

build() {
  cd "$srcdir/psycopg2-$pkgver"

  # Thanks for the tip, Xentac.
  sed -i 's/,PSYCOPG_DEBUG$//' setup.cfg
  
  python2.5 setup.py install --prefix=/usr --root=$pkgdir || return 1
}
