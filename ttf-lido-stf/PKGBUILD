# Maintainer: Milan <r-whizz@seznam.cz>

pkgname=ttf-lido-stf
pkgver=0
pkgrel=1
pkgdesc="Lido STF TrueType"
arch=('any')
url="http://lege.cz/typo/ldown2.htm"
license=('GPL')
depends=('fontconfig' 'xorg-font-utils')
source=("http://lege.cz/typo/LidoST.zip"
	    "http://lege.cz/typo/LidoSTFCE_PC.zip"
	    "http://lege.cz/typo/LidoSTF_PC.zip")
md5sums=('3a5af7ce0f35c72b739be38f549f6677' '001f4b18dec6d1b93db95ee84e107775'
	     'e513903d496a9774e4145a9369315e46')
install=$pkgname.install

build() {
    install -Dm 644 "$srcdir/Lido ST/LidoST.otf" "$pkgdir/usr/share/fonts/OTF/LidoST.otf"
    install -Dm 644 "$srcdir/Lido ST/LidoSTBol.otf" "$pkgdir/usr/share/fonts/OTF/LidoSTBol.otf"
    install -Dm 644 "$srcdir/Lido ST/LidoSTBolIta.otf" "$pkgdir/usr/share/fonts/OTF/LidoSTBolIta.otf"
    install -Dm 644 "$srcdir/Lido ST/LidoSTIta.otf" "$pkgdir/usr/share/fonts/OTF/LidoSTIta.otf"
    install -Dm 644 "$srcdir/LidoSTFCE_PC/LIDSTFCE.TTF" "$pkgdir/usr/share/fonts/TTF/LIDSTFCE.TTF"
    install -Dm 644 "$srcdir/LidoSTFCE_PC/LISTFCCE.TTF" "$pkgdir/usr/share/fonts/TTF/LISTFCCE.TTF"
    install -Dm 644 "$srcdir/LidoSTFCE_PC/LISTFCCE_.TTF" "$pkgdir/usr/share/fonts/TTF/LISTFCCE_.TTF"
    install -Dm 644 "$srcdir/LidoSTFCE_PC/LISTFCEB.TTF" "$pkgdir/usr/share/fonts/TTF/LISTFCEB.TTF"
    install -Dm 644 "$srcdir/LidoSTFCE_PC/LISTFCEB_.TTF" "$pkgdir/usr/share/fonts/TTF/LISTFCEB_.TTF"
    install -Dm 644 "$srcdir/LidoSTFCE_PC/LISTFCEI.TTF" "$pkgdir/usr/share/fonts/TTF/LISTFCEI.TTF"
    install -Dm 644 "$srcdir/LidoSTF_PC/LIDOSTFB.TTF" "$pkgdir/usr/share/fonts/TTF/LIDOSTFB.TTF"
    install -Dm 644 "$srcdir/LidoSTF_PC/LIDOSTFC.TTF" "$pkgdir/usr/share/fonts/TTF/LIDOSTFC.TTF"
    install -Dm 644 "$srcdir/LidoSTF_PC/LIDOSTFI.TTF" "$pkgdir/usr/share/fonts/TTF/LIDOSTFI.TTF"
    install -Dm 644 "$srcdir/LidoSTF_PC/LIDOSTF_.TTF" "$pkgdir/usr/share/fonts/TTF/LIDOSTF_.TTF"
    install -Dm 644 "$srcdir/LidoSTF_PC/LIDSTFBI.TTF" "$pkgdir/usr/share/fonts/TTF/LIDSTFBI.TTF"
    install -Dm 644 "$srcdir/LidoSTF_PC/LIDSTFCB.TTF" "$pkgdir/usr/share/fonts/TTF/LIDSTFCB.TTF"
}
