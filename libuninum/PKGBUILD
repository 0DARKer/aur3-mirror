# Contributor: lolilolicon <(loli){2}con@gmail\.com>
pkgname=libuninum
pkgver=2.7
pkgrel=2
pkgdesc="C library for converting Unicode strings to integers and integers to Unicode strings."
arch=('i686' 'x86_64')
url="http://billposer.org/Software/libuninum.html"
license=('LGPL')
depends=(gmp)
source=(http://billposer.org/Software/Downloads/$pkgname-$pkgver.tar.gz)
md5sums=('86bf829d4d9b1374f7577c4d812b108c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
  # install docs
  install -d "$pkgdir/usr/share/doc/$pkgname/"
  install -m644 README{,_NUMBERCONVERTER} "$pkgdir/usr/share/doc/$pkgname"
  # install license
  install -Dm644 {,"$pkgdir/usr/share/licenses/$pkgname/"}COPYING
}

# vim:set ts=2 sw=2 et:

