# Contributor: noonov <noonov@gmail.com>

pkgname=jd
pkgver=2.8.6
_date=130518
pkgrel=1
pkgdesc="A 2channel browser written in C++ using gtkmm"
arch=('i686' 'x86_64')
url="http://jd4linux.sourceforge.jp/"
license=('GPL2')
depends=('libsm' 'libgcrypt' 'gtkmm')
conflicts=('jd-svn')
source=(http://dl.sourceforge.jp/jd4linux/58841/${pkgname}-${pkgver}-${_date}.tgz)
md5sums=('111e60fc0320e6a48d823aef6666a38b')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  make DESTDIR=${pkgdir} install
}
