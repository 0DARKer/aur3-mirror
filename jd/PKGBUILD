# Contributor: noonov <noonov@gmail.com>

pkgname=jd
pkgver=2.8.1
_date=110312
pkgrel=1
pkgdesc="A 2channel browser written in C++ using gtkmm"
arch=('i686' 'x86_64')
url="http://jd4linux.sourceforge.jp/"
license=('GPL2')
depends=('libsm' 'gtkmm')
conflicts=('jd-svn')
source=(http://dl.sourceforge.jp/jd4linux/51244/${pkgname}-${pkgver}-${_date}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  make DESTDIR=${pkgdir} install
}

md5sums=('288813a73bca390eb62a40d56d6926b9')
