# Contributor: noonov <noonov@gmail.com>

pkgname=jd
pkgver=2.8.0
_date=110203
pkgrel=1
pkgdesc="A 2channel browser written in C++ using gtkmm"
arch=('i686' 'x86_64')
url="http://jd4linux.sourceforge.jp/"
license=('GPL2')
depends=('libsm' 'gtkmm')
conflicts=('jd-svn')
source=(http://dl.sourceforge.jp/jd4linux/50791/${pkgname}-${pkgver}-${_date}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  make DESTDIR=${pkgdir} install
}

md5sums=('fac9209abc691f3d2f95f637db605f52')
