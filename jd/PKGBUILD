# Contributor: noonov <noonov@gmail.com>

pkgname=jd
pkgver=2.8.8
_date=140601
pkgrel=1
pkgdesc="A 2channel browser written in C++ using gtkmm"
arch=('i686' 'x86_64')
url="http://jd4linux.sourceforge.jp/"
license=('GPL2')
depends=('gnutls' 'libsm' 'gtkmm')
conflicts=('jd-svn')
source=(http://dl.sourceforge.jp/jd4linux/61281/${pkgname}-${pkgver}-${_date}.tgz)
md5sums=('113e1e8cbef88111df937b6a9b338e55')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-${_date}

  make DESTDIR=${pkgdir} install
}
