pkgname=aurphan
pkgver=20110319
pkgrel=1
pkgdesc="Searches the AUR (and more) for orphans you have installed.  Adopt a package today!"
arch=('any')
url="http://kmkeen.com/aurphan/"
license=('GPL')
depends=('bash' 'curl' 'libxml2')
makedepends=()
source=(http://kmkeen.com/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('cf28f5414ae3f186af3ccc8bdccc207d')

build() {
  cd "$srcdir"/$pkgname
  install -D -m 0755 aurphan "$pkgdir"/usr/bin/aurphan
}

