pkgname=aurphan
pkgver=20110410
pkgrel=1
pkgdesc="Search the AUR for orphans you have installed, and other packages in need.  Adopt a package today!"
arch=('any')
url="http://kmkeen.com/aurphan/"
license=('GPL')
depends=('bash' 'curl' 'libxml2' 'jshon')
makedepends=()
source=(http://kmkeen.com/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('dafdf4553b10f016459e217a288b9e37')

build() {
  cd "$srcdir"/$pkgname
  install -D -m 0755 aurphan "$pkgdir"/usr/bin/aurphan
}

