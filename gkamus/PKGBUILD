pkgname=gkamus
pkgver=0.3
pkgrel=1
pkgdesc="Indonesian-English Dictionary"
arch=('i686')
url="http://gkamus.sourceforge.net/"
license=('GPLv2')
depends=('gtk2')
source=(http://biznetnetworks.dl.sourceforge.net/project/${pkgname}/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz)
md5sums=('8f38c255d1539e420a0c1899aed207a7')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	
	  ./configure --prefix=/usr
	  
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
