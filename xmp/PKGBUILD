# Contributor: john_schaf <john_schaf@hotmail.fr>
pkgname=xmp
pkgver=3.3.0
pkgrel=1
pkgdesc="The Extended Module Player is a portable command-line module player and a plugin for Audacious. Plays over 70 mainstream and exotic module formats."
arch=(i686 x86_64)
url="http://xmp.sourceforge.net/"
license=('GPL')
depends=('alsa-lib')
#makedepends=('audacious')
backup=(etc/xmp/xmp.conf etc/xmp/modules.conf)
install=xmp.install
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('0ac15cdb68cf0a08f418d37b4c1843bd')

build() {
  cd "$startdir/src/$pkgname-$pkgver"

#  ./configure --prefix=/usr --enable-audacious-plugin || return 1
  ./configure --prefix=/usr || return 1
  make || return 1

  make DESTDIR="$startdir/pkg" install || return 1
}

