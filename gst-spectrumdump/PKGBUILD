pkgname=gst-spectrumdump
pkgver=0.3_05102011
pkgrel=2
pkgdesc="Dumps, scales, and amplifies spectrum magnitudes from audio input to stdout/callback."
arch=('any')
url="http://wintervenom.mycrosoft.us/projects"
license=('WTFPL')
depends=('python2' 'gstreamer0.10-python' 'gstreamer0.10-good' 'pygobject')
optdepends=('python-gconf')
source=('gst-spectrumdump')
md5sums=('320ae28848362668fe7d1c83319d9062')

build() {
    return
}

package() {
    cd "${srcdir}"
    mkdir -p "${pkgdir}/bin"
    install ${pkgname} "${pkgdir}/bin"
}
