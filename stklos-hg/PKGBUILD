# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname='stklos-hg'
pkgver=454.58d3b87ebc49
pkgrel=1
pkgdesc='A free Scheme system compliant with the languages features defined in R5RS'
arch=('i686' 'x86_64')
url='http://www.stklos.net/index.html'
license=('GPL')
depends=('gc' 'gmp' 'libffi' 'pcre')
makedepends=('mercurial')
conflicts=('stklos')
provides=('stklos')
source=('http://www.stklos.net/hg/hgweb.cgi')
md5sums=('8436f3fdefe78c1dfa9282490125d709')
_hgname='stklos'

pkgver() {
  cd $srcdir/${_hgname}
  echo $(hg identify -n).$(hg identify -i)|sed 's:+::g'
}

build() {
  cd "${_hgname}"
  ./configure --prefix=/usr --sysconfdir=/etc 
  make
}

package() {
  cd "${srcdir}/${_hgname}-build"
  make DESTDIR="$pkgdir" install
  install -Dm644 $pkgdir/usr/etc/stklos/Makefile-scmpkg.tmpl \
    $pkgdir/etc/stklos/Makefile-scmpkg.tmpl
  rm -r $pkgdir/usr/etc
}
