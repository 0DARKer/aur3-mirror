# Maintainer: Josip <josipponjavic@gmail.com>

pkgname=meliae-svg-icon-theme
pkgver=1.2
pkgrel=1
pkgdesc="Here you are version n. 1.1 of the new Meliae Icon Theme (all icons are in SVG format)."
arch=('any')
url="http://www.gnome-look.org/content/show.php/Meliae+SVG+%28dark+and+light+panels%29?content=118676"
license=('GPL')
source=(http://fc04.deviantart.net/fs70/f/2010/065/9/1/Meliae_SVG_Icon_Theme_v__1_2_by_sora_meliae.zip
                  http://fc06.deviantart.net/fs71/f/2010/065/1/7/Meliae_SVG_Dark_v__1_2_by_sora_meliae.zip)
md5sums=('3a4092b83ea8a935ab7e2b0e9074ec23' '5deea7afa77d896a384bbc7dfee52d32')

build() {
	cd $startdir/src/
	mkdir -p $startdir/pkg/usr/share/icons/
        tar xvfz "MeliaeSVG.tar.gz"
        cp -R "$srcdir/MeliaeSVG" "$pkgdir/usr/share/icons"
        cp -R "$srcdir/MeliaeSVG-Dark" "$pkgdir/usr/share/icons"
}

