# Maintainer: Army <uli armbruster who uses the google mail service>

pkgname=cloudruby-git
_gitname="cloudruby"
pkgver=20130522
pkgrel=1
pkgdesc="Ncurses player for Soundcloud tracks in Ruby"
arch=('i686' 'x86_64')
url="https://github.com/kulpae/cloudruby"
license=(custom)
depends=('ruby' 'mpg123' 'ncurses')
makedepends=('git')
provides=('cloudruby')
conflicts=('cloudruby' 'ruby-ncurses')
# WTF? ruby-ncurses? ooo..! 0_o

source=($_gitname::git://github.com/kulpae/cloudruby.git
        https://github.com/downloads/rkumar/rbcurse/ncurses-1.2.4.gem)
md5sums=('SKIP'
         '2a64363e453731a268d98440e3e03177')

pkgver() {
  cd "$_gitname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}


package() {
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install ncurses --install-dir "$pkgdir/$_gemdir" --no-user-install

  cd "$_gitname"

  install -dm 755 "${pkgdir}"/usr/{bin,lib/${_gitname},share/licenses/${pkgname}}/

  ln -s /usr/lib/${_gitname}/${_gitname} "${pkgdir}/usr/bin/${_gitname}"

  install -m 755 cloudruby       "${pkgdir}/usr/lib/${_gitname}/"
  install -m 644 mpg123player.rb "${pkgdir}/usr/lib/${_gitname}/"
  install -m 644 ncurses_ui.rb   "${pkgdir}/usr/lib/${_gitname}/"
  install -m 644 soundcloud.rb   "${pkgdir}/usr/lib/${_gitname}/"
  install -m 644 LICENSE         "$pkgdir/usr/share/licenses/${pkgname}/"
}

