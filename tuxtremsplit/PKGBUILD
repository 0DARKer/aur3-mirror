# Maintainer: Wido <widomaker2k7@gmail.com>
pkgname=tuxtremsplit
_pkgname=tuXtremSplit
pkgver=0.1.2
_build=alpha2
pkgrel=1
pkgdesc="TuXtremSplit is a Linux client of Xtremsplit application"
arch=('i686' 'x86_64')
url="http://trac.zedroot.org/wiki/TuXtremSplit"
license=('GPL')
depends=('gettext' 'openssl' 'libglademm')
groups=()
source=(http://depot.zedroot.org/tuxtremsplit/sources/$_pkgname-src.v$pkgver.$_build.tar.gz tuxtremsplit.desktop)
md5sums=('20a66d444491088f27ee84691d1a84b5' '7d6b19e26ecce85cebf6520c785dfe27')

build() {
cd $srcdir/${_pkgname}

  make || return 1

    install -D -m755 $srcdir/${_pkgname}/tuXtremSplit $pkgdir/usr/bin/tuXtremSplit
    ln -s $pkgdir/usr/bin/tuXtremSplit $pkgdir/usr/bin/tuxtremsplit

    install -D -m644 $srcdir/${_pkgname}/tuxtremsplit.glade $pkgdir/usr/share/tuxtremsplit/tuxtremsplit.glade
    install -D -m644 $srcdir/${_pkgname}/icon/tuxtremsplit.png $pkgdir/usr/share/tuxtremsplit/tuxtremsplit.png
    install -D -m644 $srcdir/${_pkgname}/COPYING $pkgdir/usr/share/tuxtremsplit/doc/COPYING
    install -D -m644 $srcdir/${_pkgname}/README $pkgdir/usr/share/tuxtremsplit/doc/README
    # Install .desktop
    install -Dm 644 $srcdir/tuxtremsplit.desktop $pkgdir/usr/share/applications/tuxtremsplit.desktop

}
