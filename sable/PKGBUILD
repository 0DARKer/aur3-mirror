package() {
  # install themes
  
  #cd Sable
  find SableNC/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \; 
  find Sable/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;          
}

