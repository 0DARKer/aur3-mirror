# Maintainer: killhellokitty <killhellokitty.deviantart.com>

pkgname=sable
pkgver=3.14.15_01292015
pkgrel=1
pkgdesc="A flat green, blue, NC(gray), and red themes with patterened background for gnome-shell, cinnamon-2.4, xfwm4, openbox-3, Qt4, and Chromium Theme, as well as all themes without patterned background. Eight in all."
arch=('any')
url="http://fav.me/d8eg4n0"
license=('GPLv3')
depends=('gtk-engines' 'gnome-themes-standard>=3.14' 'gtk-engine-murrine>=0.98.2')

source=("https://dl.dropboxusercontent.com/u/330352/sable-3.14.15_01292015.zip")
#install=$pkgname.install
#replaces=('delorean-dark-themes-3.8')
#conflicts=('delorean-dark-theme-3.8')

md5sums=('021433250fce6ea5802f666b3acacb5a')


package() {
  # install themes
  
  #cd DORIAN

  find Sable-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find Sable-Blue-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find Sable-Red-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \; 
  find Sable-NC-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find Sable-NP-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find Sable-Blue-NP-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find Sable-Red-NP-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find Sable-NC-NP-3.14/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;           
}

