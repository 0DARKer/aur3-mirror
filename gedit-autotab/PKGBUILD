# Maintainer: Evangelos Foutras <foutrelis@gmail.com>

pkgname=gedit-autotab
pkgver=0.7
pkgrel=2
pkgdesc="Automatically detect tab preferences for source files"
arch=('any')
url="http://code.google.com/p/gedit-autotab/"
license=('GPL3')
depends=('gedit')
source=(http://gedit-autotab.googlecode.com/files/autotab-0.7.tar.gz)
sha1sums=('93e3b025db919ea4d604f47f3efcfda04d1c1809')

build() {
  true
}

package() {
  cd "$srcdir"

  install -d "$pkgdir/usr/lib/gedit-2/plugins"
  install -m644 -t "$pkgdir/usr/lib/gedit-2/plugins/" autotab.*
}

# vim:set ts=2 sw=2 et:
