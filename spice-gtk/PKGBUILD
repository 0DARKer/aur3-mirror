# Maintainer: Lucio Zara <pennega@gmail.com> 
 
pkgname=spice-gtk
pkgver=0.7.39
_pkgsver=ab64
pkgrel=1
pkgdesc="SPICE client."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig intltool perl-text-csv usbredir)
depends=(spice pulseaudio)
source=("http://spice-space.org/download/gtk/$pkgname-$pkgver-$_pkgsver.tar.bz2")
md5sums=('7043735c55396bf634c27c5a8adb94a1')


build() {
  cd "$srcdir/$pkgname-$pkgver-$_pkgsver"
  ./configure --prefix=/usr \
	--with-gtk=2.0 \
	--with-python \
	--enable-smartcard=no

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver-$_pkgsver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
