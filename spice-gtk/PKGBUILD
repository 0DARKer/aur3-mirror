# Maintainer: Lucio Zara <pennega@gmail.com> 
 
pkgname=spice-gtk
pkgver=0.7
pkgrel=1
pkgdesc="SPICE client."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig intltool perl-text-csv)
depends=(spice)
source=("http://spice-space.org/download/gtk/$pkgname-$pkgver.tar.bz2")
md5sums=('a47ca51ef4bb27cab35ddbfb9e6c0fff')


build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr \
	 --enable-smartcard=no
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
