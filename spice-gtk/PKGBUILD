# Maintainer: Lucio Zara <pennega@gmail.com> 
 
pkgname=spice-gtk
pkgver=0.7.150
_pkgsver=e507
pkgrel=1
pkgdesc="SPICE client."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig intltool perl-text-csv usbredir)
depends=(spice pulseaudio)
#source=("http://spice-space.org/download/gtk/$pkgname-$pkgver-$_pkgsver.tar.bz2")
source=("http://elmarco.fedorapeople.org/$pkgname-$pkgver-$_pkgsver.tar.bz2")
md5sums=('e8653cf8d7cbc16f260aeba03b150baa')


build() {
  cd "$srcdir/$pkgname-$pkgver-$_pkgsver"
  ./configure --prefix=/usr \
	--with-gtk=2.0 \
	--with-python \
	--enable-smartcard=no

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver-$_pkgsver"

  make DESTDIR="$pkgdir/" install
}

