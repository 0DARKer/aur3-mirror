# Maintainer: Lucio Zara <pennega@gmail.com> 
 
pkgname=spice-gtk
pkgver=0.10
#_pkgsver=e507
pkgrel=4
pkgdesc="SPICE client."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig intltool perl-text-csv usbredir)
depends=(spice pulseaudio)
source=("http://spice-space.org/download/gtk/$pkgname-$pkgver.tar.bz2"
	"spice-gtk.patch")

#source=("http://elmarco.fedorapeople.org/$pkgname-$pkgver-$_pkgsver.tar.bz2")
md5sums=('5f3e49f3634a229af9b1679540c23019'
	'265cfab9ef348b9d33d3898291dd61cd')


build() {
  #cd "$srcdir/$pkgname-$pkgver-$_pkgsver"
  cd "$srcdir/$pkgname-$pkgver"
  patch -p1 <../spice-gtk.patch
  ./configure --prefix=/usr \
	--with-gtk=2.0 \
	--with-python \
	--enable-smartcard=no \
	--enable-vala
  make
}

package() {
  #cd "$srcdir/$pkgname-$pkgver-$_pkgsver"
  cd "$srcdir/$pkgname-$pkgver"

  make -j1 DESTDIR="$pkgdir/" install
}

