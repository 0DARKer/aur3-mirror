pkgname=notipy-fork
_pkgbasename=notipy
pkgver=0.5
pkgrel=1
pkgdesc='A minimalistic gtk3 notification daemon written in python.'
arch=('any')
url='https://github.com/mrk3004/notipy'
license=('GPL')
conflicts=('notification-daemon'
           'mate-notification-daemon'
           'notification-daemon-xfce'
           'xfce4-notifyd'
           'xfce4-notifyd-git'
           'qtnotifydaemon'
           'qtnotifydaemon-svn'
           'cow-notify-git'
           'notify-osd'
           'notify-osd-better-git'
           'notify-osd-bzr'
           'notify-osd-customizable'
           'notify-osd-gtk2'
           'notify-osd-hack-color'
           'notify-serve-git'
           'notipy')
provides=('notification-daemon=0.7' 'notipy=0.2')
depends=('python2-gobject' 'gtk3' 'dbus-python')
optdepends=('libcanberra: for sound support')
options=(!emptydirs)
install="${pkgname}.install"
source=("https://github.com/mrk3004/$_pkgbasename/tarball/npf-$pkgver"
        "${pkgname}.install")
md5sums=('fabe5f5c016d378c0f474e90765405e8'
         '8b991923cb5f70083a303787dca95923')

build() {
  cd "$srcdir/mrk3004-$_pkgbasename-c931b13"
  python2 setup.py install --root="$pkgdir" --prefix=/usr --optimize=1
}
