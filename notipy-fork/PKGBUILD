# Maintainer: Vinycius Maia <suportevg@uol.com.br>

pkgname=notipy-fork
pkgver=0.3
pkgrel=1
pkgdesc='A minimalistic gtk3 notification daemon written in python.'
arch=('any')
url='https://github.com/mrk3004/notipy'
license=('GPL')
conflicts=('notification-daemon'
           'mate-notification-daemon'
           'notification-daemon-xfce'
           'xfce4-notifyd'
           'xfce4-notifyd-git'
           'qtnotifydaemon'
           'qtnotifydaemon-svn'
           'cow-notify-git'
           'notify-osd'
           'notify-osd-better-git'
           'notify-osd-bzr'
           'notify-osd-customizable'
           'notify-osd-gtk2'
           'notify-osd-hack-color'
           'notify-serve-git'
           'notipy')
provides=('notification-daemon')
depends=('python2-gobject' 'gtk3' 'dbus-python')
optdepends=('libcanberra: for sound support')
options=(!emptydirs)
source=("https://github.com/mrk3004/${pkgname%%-*}/tarball/npf-$pkgver")
md5sums=('5372e051b19675696845808320c097c5')

build() {
  cd "$srcdir/mrk3004-${pkgname%%-*}-8a5b36d"
  python2 deployment/setup.py install --root=$pkgdir/ --optimize=1
}
