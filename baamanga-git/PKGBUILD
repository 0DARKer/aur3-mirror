#!/bin/bash
# Maintainer: Jorge Barroso <jorge.barroso.11@gmail.com>

pkgname=baamanga-git
pkgver=0.3.r2.gbf20cfd
pkgrel=1
pkgdesc="Command-line tool to download manga from many websites. Heavy development. Git version"
arch=('i686' 'x86_64')
url="https://github.com/jorge-barroso/baamanga"
license=('GPL2')
depends=('curl')
provides=(baamanga)
conflicts=(baamanga)
install=baamanga.install
source=(git+https://github.com/jorge-barroso/baamanga.git)
sha512sums=('SKIP')

pkgver() {
  cd "$srcdir/baamanga"
  git describe --long --tags | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build(){
	cd "$srcdir/baamanga"
	make
}

package() {
cd "${srcdir}/baamanga"
	make DESTDIR=${pkgdir} install
}

# vim:set ts=2 sw=2 et:
