# Maintainer: Joel Teichroeb <joel@teichroeb.net>

pkgname=orbital-git
pkgver=20131217
pkgrel=1
pkgdesc=""
arch=(i686 x86_64)
url="https://github.com/giucam/orbital"
license=('LGPL')
depends=('weston-git' 'nuclear-git')
makedepends=('git' 'cmake')
source=(git://github.com/giucam/orbital.git)
sha1sums=('SKIP')

build() {
	cd orbital
	mkdir build
	cd build

	cmake ..
	make
}

package() {
	cd orbital
	cd build

	make DESTDIR=${pkgdir} install
}
