# Maintainer: Schala

pkgname=mingw32-libglademm
pkgver=2.6.7
pkgrel=1
arch=(any)
pkgdesc="C++ wrapper for libglade (mingw32)"
depends=(mingw32-libglade)
makedepends=(mingw32-gcc)
options=(!strip !buildflags)
license=('LGPL')
url="http://www.gtkmm.org/"
source=(http://ftp.gnome.org/pub/gnome/sources/libglademm/2.6/libglademm-${pkgver}.tar.bz2)
md5sums=('f9ca5b67f6c551ea98790ab5f21c19d0')

build()
{
  cd $startdir/src/libglademm-$pkgver

  export CFLAGS="-O2 -mms-bitfields"
  export PKG_CONFIG_PATH="/usr/i486-mingw32/lib/pkgconfig/"

  ./configure \
    --prefix=/usr/i486-mingw32 \
    --host=i486-mingw32 \
    --build=$CHOST \
    || exit 1

  make || exit 1
  mkdir -p $startdir/pkg/usr/i486-mingw32/lib
  make install DESTDIR=$startdir/pkg || exit 1

  cd $startdir/pkg
  find . -name '*.a' -o -name '*.dll' -o -name '*.exe' \
    | xargs -rtl1 i486-mingw32-strip -g
  
  rm -rf usr/i486-mingw32/share/gtk-doc
}
