pkgname=libksane-git
_gitname=libksane
pkgver=v4.9.97.4.g61d4dca
pkgrel=1
pkgdesc='libksane is an image scanning library that provides a QWidget that contains all the logic needed to interface a sacanner'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('kdelibs' 'sane')
makedepends=('git' 'automoc4' 'cmake')
conflicts=('libksane')
provides=('libksane')
groups=('kde-git' 'digikam-git')
source=('git://anongit.kde.org/libksane')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $srcdir
  
  msg "GIT checkout done"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi
  mkdir $srcdir/build
  cd $srcdir/build
  cmake $srcdir/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}