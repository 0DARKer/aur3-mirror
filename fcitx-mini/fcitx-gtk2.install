post_install() {
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  update-desktop-database -q
  update-mime-database usr/share/mime &> /dev/null
  
  if res="$(usr/bin/gtk-query-immodules-2.0)"; then
    echo "$res" > etc/gtk-2.0/gtk.immodules
  fi
}

post_upgrade() {
    post_install
}

post_remove() {
    post_install
}
