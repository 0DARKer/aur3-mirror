_pkgbasename=libgdiplus
pkgname=lib32-$_pkgbasename
pkgver=2.10
pkgrel=1
pkgdesc="An Open Source Implementation of the GDI+ API (32 bit, library only)"
arch=('x86_64')
license=('MPL' 'LGPL')
url="http://www.mono-project.com"
depends=('lib32-libtiff>=3.9.2' 'lib32-cairo>=1.8.10' 'lib32-giflib' 
		 'lib32-glib2>=2.24.0' 'lib32-libexif' "$_pkgbasename")
makedepends=('gcc-multilib')
options=('!libtool')
source=(http://ftp.novell.com/pub/mono/sources/libgdiplus/libgdiplus-${pkgver}.tar.bz2)
md5sums=('451966e8f637e3a1f02d1d30f900255d')

build() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  ./configure --prefix=/usr --with-cairo=system \
					--libdir=/usr/lib32 CC='gcc -m32'
  make
}

package() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
