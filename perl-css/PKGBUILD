# $Id$
# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>

pkgname=perl-css
pkgver=1.08
pkgrel=3
pkgdesc="Perl/CPAN Module CSS"
arch=("i686" "x86_64")
url="http://search.cpan.org/dist/CSS/"
license=("perl")
makedepends=("perl")
depends=("perl-parse-recdescent")
source=("http://search.cpan.org/CPAN/authors/id/I/IA/IAMCAL/CSS-$pkgver.tar.gz")
md5sums=('a7b0f7256254fd55a15f8ce81eda7eaf')



build() {
  cd $startdir/src/CSS-$pkgver

  eval `perl -V:archname`
  /usr/bin/perl Makefile.PL \
  INSTALLARCHLIB=/usr/lib/perl5/current/${archname} \
  INSTALLSITELIB=/usr/lib/perl5/site_perl/current \
  INSTALLSITEARCH=/usr/lib/perl5/site_perl/current/${archname} || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  /usr/bin/find $startdir/pkg -name '.packlist' -exec rm  '{}' \; && \
  /usr/bin/find $startdir/pkg -name 'perllocal.pod' -exec rm  '{}' \; && \
  /usr/bin/find $startdir/pkg -depth -type d -empty -exec rmdir '{}' \;

}
