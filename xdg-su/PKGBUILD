pkgname=xdg-su
pkgver=1.1beta2
pkgrel=2
pkgdesc="Run a program as root with a graphical interface"
arch=('any')
url="http://cli-apps.org/content/show.php/xdg-su?content=129254"
license=('mit')
makedepends=('links' 'xmlto')
source=( "http://cli-apps.org/CONTENT/content-files/129254-$pkgname-$pkgver.tar.bz2" )
md5sums=('82ec57d8f914476035fd1fcf64d45b2b')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure --prefix=/usr
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}