# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=fabula
pkgver=0.3.0
pkgrel=1
pkgdesc="An Open Source Python Game Engine suitable for adventure, role-playing and strategy games and digital interactive storytelling."
arch=(i686 x86_64)
url="http://florian-berger.de/software/fabula"
license=('GPL')
depends=('python3-pygame-svn' 'tk')
makedepends=('python-cx_freeze')
source=("http://static.florian-berger.de/$pkgname-$pkgver.tar.bz2"
        "http://static.florian-berger.de/$pkgname-$pkgver.zip")
md5sums=('54069cc5ea96016bc10efa3ad15aa926'
         '14c7f02dae7e18ab9ba7d5c34d7fe6be')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python setup.py install --root="$pkgdir/"
}

