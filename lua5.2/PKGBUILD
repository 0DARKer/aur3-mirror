# $Id$
# Maintainer: Hanspeter Portner <ventosus (at) airpost.net>

pkgname=lua5.2
pkgver=5.2.0BETA
pkgrel=1
pkgdesc="A powerful light-weight programming language designed for extending applications." 
arch=('i686' 'x86_64')
url="http://www.lua.org/"
depends=('readline' 'ncurses')
license=('MIT')
options=('!makeflags' '!emptydirs')
source=("http://www.lua.org/work/lua-5.2.0-beta.tar.gz"
        '01_Makefile.patch'
        '02_Makefile.patch')
md5sums=('33c29c67da81e14fa15792e061a2c5ad'
'd8d97bac842b1026d38ea7a6e2c30c14'
'3ca5e241c8550b720e6abd88a126840d')

build() { 
  cd "${srcdir}/lua-5.2.0-beta"
	patch -p0 < "${srcdir}/01_Makefile.patch"
	cd src
  patch -p0 < "${srcdir}/02_Makefile.patch"
	cd ..
	make linux
}

package() {
  cd "${srcdir}/lua-5.2.0-beta"
	DESTDIR="${pkgdir}" make install
}
