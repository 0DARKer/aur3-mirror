# Contributer: Jonathan Curran <joncfoo at gmail com>

pkgname=gnome-encfs-hg
pkgver=12
pkgrel=2
pkgdesc="Gnome keyring integration for EncFS folders"
url="http://bitbucket.org/obensonne/gnome-encfs"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('encfs' 'gnome-keyring' 'pyxdg' 'python')
makedepends=('mercurial')

_hgroot='http://bitbucket.org/obensonne'
_hgrepo='gnome-encfs'

build() {
	cd $srcdir

	# Update the repo, else clone a new one
	if [ -d $_hgrepo ]; then
		cd $_hgrepo
		hg pull -u
	else
		hg clone ${_hgroot}/${_hgrepo}
		cd $_hgrepo
	fi

	mkdir -p $startdir/pkg/usr/bin
	sed -i -e "s|bin\/python|bin\/python2|" gnome-encfs
	cp gnome-encfs $startdir/pkg/usr/bin/
}

