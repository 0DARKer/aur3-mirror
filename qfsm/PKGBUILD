# Contributor: Martin Stolpe <martinstolpe {at} gmail ... com>
pkgname=qfsm
pkgver=0.52
_extraver=0
pkgrel=1
pkgdesc="A graphical tool for designing finite state machines"
arch=('i686' 'x86_64')
url="http://qfsm.sourceforge.net/"
license=('GPL')
depends=("qt" 'hicolor-icon-theme')
makedepends=("cmake")
install=qfsm.install
source=(http://ovh.dl.sourceforge.net/project/$pkgname/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.${_extraver}-Source.tar.bz2)

build() {
  cd "$srcdir/$pkgname-$pkgver.${_extraver}-Source"

  [ -d $srcdir/$pkgname-$pkgver.${_extraver}-Source/build ] && rm -rf $srcdir/$pkgname-$pkgver.${_extraver}-Source/build
  mkdir $srcdir/$pkgname-$pkgver.${_extraver}-Source/build
  cd $srcdir/$pkgname-$pkgver.${_extraver}-Source/build

  cmake ../
  make || return 1
  make DESTDIR="$pkgdir/" install
}
md5sums=('62590fe7dfd7d77c80b03695860a2434')
