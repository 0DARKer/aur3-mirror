# Maintainer: Nicholas Tryon (KC2YTG) <dhraak at gmail dot com>
pkgname=chirp-daily
pkgver=20121225
pkgrel=1
pkgdesc="GUI tool for programming ham radios; supports a large number of makes and models"
arch=('any')
url="http://chirp.danplanet.com/"
license=('GPL')
depends=('python2-lxml' 'python2-pyserial' 'desktop-file-utils')
options=(!emptydirs)
install=
source=("http://trac.chirp.danplanet.com/chirp_daily/daily-$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('61a3f7f728cda9b0b1421919f544d43b')


package() {
  cd "$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

