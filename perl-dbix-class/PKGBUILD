# Maintainer: Moritz Bunkus <moritz@bunkus.org>
pkgname='perl-dbix-class'
pkgver='0.08209'
pkgrel='1'
pkgdesc="Extensible and flexible object <-> relational mapper."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-class-accessor-grouped' 'perl-class-c3-componentised' 'perl-class-inspector' 'perl-config-any' 'perl-context-preserve' 'perl-data-compare' 'perl-data-dumper-concise' 'perl-data-page' 'perl-dbi' 'perl-hash-merge' 'perl-module-find' 'perl-mro-compat' 'perl-namespace-clean' 'perl-path-class' 'perl-scope-guard' 'perl-sql-abstract' 'perl-sub-name' 'perl-try-tiny')
makedepends=('perl-dbd-sqlite' 'perl-package-stash' 'perl-test-exception' 'perl-test-warn' 'perl-moo')
url='http://search.cpan.org/dist/DBIx-Class'
source=('http://search.cpan.org/CPAN/authors/id/A/AB/ABRAXXA/DBIx-Class-0.08209.tar.gz')
md5sums=('7949bba0584ef5fa4675dfdf08e4f62d')
sha512sums=('e8750a3df5229d733e8a7440c667a12763d9e0b697b7a0f62914efb14e478584db0208c1a53e7d8ba88a10f5e96526c8c96c127647cd65279cc60c7905d32a96')

build() {
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  cd "${srcdir}/DBIx-Class-0.08209"
  /usr/bin/perl Makefile.PL
  make
}

check() {
  cd "${srcdir}/DBIx-Class-0.08209"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
  make test
}

package() {
  cd "${srcdir}/DBIx-Class-0.08209"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
