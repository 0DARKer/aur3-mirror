# Contributor: Ilya Mezhirov <mezhirov@iupr.com>

pkgname=ocropus-hg
pkgver=375
pkgrel=1
pkgdesc="An OCR system for documents and books"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ocropus/"
license=('APACHE')
makedepends=('mercurial' 'scons')
depends=('iulib-hg' 'giflib' 'sqlite3')
conflicts=('ocropus')
options=()

_hgroot="https://ocropus.googlecode.com/hg/"
_hgrepo="ocropus"

build() {
    cd "$srcdir"
    msg "Connecting to Mercurial server...."

    if [ -d $_hgrepo ] ; then
        cd $_hgrepo
        hg pull -u || return 1
        msg "The local files are updated."
    else
        hg clone $_hgroot $_hgrepo || return 1
    fi

    msg "Mercurial checkout done or server timeout"
    msg "Starting scons..."


    rm -rf "$srcdir/$_hgrepo-build"
    cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
    cd "$srcdir/$_hgrepo-build"

    scons prefix=/usr iulib=/usr destdir="$pkgdir" omp=1 install || return 1
}
