pkgname=notmuch-addrlookup-c
pkgver=80e64e5e99
pkgrel=1
pkgdesc="A tool to query the notmuch database for addresses."
url="https://github.com/aperezdc/notmuch-addrlookup-c"
arch=('any')
license=('MIT')
depends=('notmuch' 'glib2')
makedepends=('make' 'git' 'pkg-config')
conflicts=()
replaces=()
backup=()
source=("git://github.com/aperezdc/notmuch-addrlookup-c.git")
md5sums=('SKIP')

build() {
  cd "${srcdir}/${pkgname}"
  make
}

package() {
  cd "${srcdir}/${pkgname}"
  install -D notmuch-addrlookup $pkgdir/usr/bin/notmuch-addrlookup
}
