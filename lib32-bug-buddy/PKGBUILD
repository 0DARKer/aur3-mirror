# Contributor: webjdm <web.jdm@gmail.com>

pkgname=lib32-bug-buddy
pkgver=2.32.0
_pkgrel32=1
pkgrel=2
pkgdesc="A bug reporting tool for GNOME (32-bit)"
url="http://www.gnome.org/"
arch=('x86_64')
license=('GPL')
groups=('lib32')
depends=('lib32-elfutils' 'lib32-libgtop' 'lib32-gtk2')
source=(ftp://ftp.archlinux.org/extra/os/i686/bug-buddy-${pkgver}-${_pkgrel32}-i686.pkg.tar.xz)
md5sums=('62cd04b1922dd637e72840e8e55dc5d5')

build() {
  mkdir -p ${pkgdir}/usr/lib32/gtk-2.0/modules
  cp -rPf ${srcdir}/usr/lib/gtk-2.0/modules/*.so* ${pkgdir}/usr/lib32/gtk-2.0/modules
}
