# Contributor: Skunnyk <skunnyk@archlinux.fr>

pkgname=xcfa
pkgver=4.2.8
pkgrel=1
pkgdesc="X Convert File Audio"
arch=('i686' 'x86_64')
url="http://www.xcfa.tuxfamily.org/"
license=('GPL2')
depends=('taglib' 'alsa-lib' 'curl' 'vte' 'desktop-file-utils')
optdepends=('dvd+rw-tools' 'cd-discid')
install=xcfa.install
source=(http://download.tuxfamily.org/xcfaudio/xcfa_download/src/$pkgname-$pkgver.tar.gz explicit-libm-link.patch)

build() {
  cd $srcdir/$pkgname-$pkgver/
  patch -p1 < ../explicit-libm-link.patch
  ./configure --prefix=/usr 
  make || return 1
  make DESTDIR="$pkgdir" install
}
md5sums=('14282ad937397bbc13746d496e93fbb0'
         '71b7647803f2ae1fadc04a5abfcef665')
