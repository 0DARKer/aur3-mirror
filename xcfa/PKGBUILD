pkgname=xcfa
pkgver=4.2.1
pkgrel=1
pkgdesc="X Convert File Audio"
arch=('i686' 'x86_64')
url="http://www.xcfa.tuxfamily.org/"
license=('GPL2')
depends=('gtk2' 'taglib' 'alsa-lib' 'curl')
source=(http://download.tuxfamily.org/xcfaudio/xcfa_download/src/$pkgname-$pkgver.tar.gz)

build() {
  cd $srcdir/$pkgname-$pkgver/
  ./configure --prefix=/usr 
  make || return 1
  make DESTDIR="$pkgdir" install
}
md5sums=('05e11a8efb8710c610a8b3d589f32233')
