# Contributor: Skunnyk <skunnyk@archlinux.fr>

pkgname=xcfa
pkgver=4.3.2
pkgrel=1
pkgdesc="X Convert File Audio"
arch=('i686' 'x86_64')
url="http://www.xcfa.tuxfamily.org/"
license=('GPL2')
depends=('taglib' 'alsa-lib' 'curl' 'vte' 'desktop-file-utils')
optdepends=('dvd+rw-tools' 'cd-discid')
install=xcfa.install
source=(http://download.tuxfamily.org/xcfaudio/xcfa_download/src/$pkgname-$pkgver.tar.gz makepkg-flag.patch)

build() {
  cd $srcdir/$pkgname-$pkgver/
  patch -p1 < ../makepkg-flag.patch
  ./configure --prefix=/usr 
  make || return 1
  make DESTDIR="$pkgdir" install
}
md5sums=('74adc3665706a16f96ce1edb6b80887b'
         '89190393e588a692d638b1e0060de406')
