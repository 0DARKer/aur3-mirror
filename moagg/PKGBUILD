# Maintainer: andy123 <ajs @ online.de>
pkgname=moagg
pkgver=1.95b
pkgrel=2
pkgdesc="Mother of all gravity games"
arch=('any')
url="http://moagg.sourceforge.net/"
license=('GPL')
depends=('java-runtime')
provides=('moagg')
md5sums=('f5443926b8a1eba89f4f64115b66c588'
         '4be88d134c98af33e376940d7592acb5')
source=('http://sourceforge.net/projects/moagg/files/moagg2/1.95/moagg-1.95b-bin.zip/download'
	'moagg.sh')
build() {
 mkdir -p $pkgdir/usr/share/moagg $pkgdir/usr/bin
 cd $srcdir/$pkgname-$pkgver
 rm run.bat
 cp -Rv $srcdir/$pkgname-$pkgver/* $pkgdir/usr/share/moagg/
 install $srcdir/moagg.sh $pkgdir/usr/bin/moagg
}
