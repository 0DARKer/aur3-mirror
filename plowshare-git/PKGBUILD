# Maintainer: SpepS <dreamspepser at yahoo dot it>

_pkg=plowshare
pkgname=$_pkg-git
pkgver=20110919
pkgrel=1
pkgdesc="Command-line downloader and uploader for Rapidshare, Megaupload, Mediafire and other file sharing websites."
arch=(any)
url="http://code.google.com/p/plowshare/"
license=('GPL')
depends=('curl' 'imagemagick' 'recode' 'js' 'tesseract')
makedepends=('git')
optdepends=('bash-completion: enable bash auto completion'
            'libcaca: ascii display for no X server'
            'tiv: ascii display for no X server'
            'aview: ascii display for no X server')
provides=("$_pkg")
conflicts=("$_pkg")
replaces=("$_pkg-svn")

_gitroot=https://code.google.com/p/$_pkg/
_gitname=$_pkg

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
}

package() {
  cd "$srcdir/$_gitname-build"

  DESTDIR="$pkgdir/" PREFIX=/usr ./setup.sh install

  # bash completion script
  install -Dm644 etc/$_pkg.completion \
    "$pkgdir/etc/bash_completion.d/$_pkg"

  # set CDIR for bash completion
  sed -i "s|local/||" "$pkgdir/etc/bash_completion.d/$_pkg"

}

# vim:set ts=2 sw=2 et:
