# Maintainer: cantabile <cantabile dot desu at gmail dot com>
# Contributor: reMiND <detanator@gmail.com>

pkgname=rhash
pkgver=1.2.5
pkgrel=1
pkgdesc='Utility for verifying hash sums (SFV, CRC). Support lots of algorithms.'
arch=('i686' 'x86_64')
url='http://rhash.anz.ru/?l=en'
license=('custom')
depends=('glibc')
backup=('etc/rhashrc')
options=('!makeflags')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver-src.tar.gz)

build() {
   cd "$srcdir/$pkgname-$pkgver"
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver"
   make PREFIX=/usr/ DESTDIR="$pkgdir" install
   # Install license
   install -D -m644 "$srcdir/$pkgname-$pkgver/COPYING" "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
md5sums=('ea301e768402db212446fb03d15079f2')
