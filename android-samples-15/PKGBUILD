pkgname=android-samples-15
pkgver=4.0.3_r01
pkgrel=1
pkgdesc='Android SDK Samples, API-15'
arch=('any')
url="http://developer.android.com/sdk/index.html"
license=('custom')
depends=('android-sdk')
source=("http://dl-ssl.google.com/android/repository/samples-15_r01.zip")
sha1sums=('4569295bcfc7287e62d8470d9da52fb08961f70e')

package() {
  mkdir -p "${pkgdir}/opt/android-sdk/samples/"
  mv "${srcdir}/android-4.0.3" "${pkgdir}/opt/android-sdk/samples/android-15"

  chmod -R ugo+rX "${pkgdir}/opt"
}
