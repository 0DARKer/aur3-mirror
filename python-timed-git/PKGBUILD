pkgname=python-timed-git
pkgver=20091024
pkgrel=3
pkgdesc="Command-line time tracking tool"
arch=('i686' 'x86_64' 'ppa')
url="http://github.com/adeel/timed"
license=('BSD')
groups=()
depends=('python' 'setuptools')
makedepends=('git') # also need easy_install!
provides=(python-timed)
conflicts=()
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot="git://github.com/adeel/timed.git"
_gitname="timed"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  python setup.py build || return 1
  python setup.py install --prefix=/usr --root=$startdir/pkg
  echo $(pwd)
#  cat ../../pkg/usr/README
#  rm -f ../../pkg/usr/README

}
