pkgname='perl-autoloader'
pkgver='5.70'
pkgrel='1'
pkgdesc="Automatic function loader (using AutoSplit)"
arch=('any')
url='http://search.cpan.org/dist/AutoLoader'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/S/SM/SMUELLER/AutoLoader-5.70.tar.gz')
md5sums=('9b1c44e4a72ff6930615e6623bc946af')

build() {
  DIST_DIR="${srcdir}/AutoLoader-5.70"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

