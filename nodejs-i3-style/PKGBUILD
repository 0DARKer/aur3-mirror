# Maintainer: tonyctl <tony@dubstepdish.com>
_npmname=i3-style
_npmver=0.2.2
pkgname=nodejs-i3-style # All lowercase
pkgver=0.2.2
pkgrel=1
pkgdesc="Make your i3wm config a little more stylish"
arch=(any)
url="https://github.com/acrisci/i3-style"
license=()
depends=('nodejs' )
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
noextract=($_npmname-$_npmver.tgz)
sha1sums=(1b7bd56edc8d59ea382989e742f1e73873c83bd2)

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install -g --prefix "$pkgdir/usr" $_npmname@$_npmver
}

