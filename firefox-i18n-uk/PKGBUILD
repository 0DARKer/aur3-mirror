pkgname=firefox-i18n-uk
pkgver=3.6.14
pkgrel=1
pkgdesc="Ukrainian language pack for Firefox"
arch=('any')
license=('MPL')
url="http://www.mozilla.ru/"
depends=("firefox")
_lang=uk
conflicts=(mozilla-firefox-${_lang} firefox-${_lang})
source=ftp://ftp.mozilla.org/pub/mozilla.org/firefox/releases/${pkgver}/linux-i686/xpi/${_lang}.xpi
md5sums=('39e0b5252c7a52388e11e12eb64caa76')

build() {
  cd "${srcdir}"
  bsdtar xf ${_lang}.xpi || return 1
  sed -i "s|jar:chrome/${_lang}.jar|jar:${_lang}.jar|" chrome.manifest || return 1
  install -D -m 644 chrome/${_lang}.jar ${pkgdir}/usr/lib/firefox-3.6/chrome/${_lang}.jar || return 1
  install -D -m 644 chrome.manifest ${pkgdir}/usr/lib/firefox-3.6/chrome/${_lang}.manifest || return 1
}
