# Contributor: Olexandr Kravchuk <sashko.archlinux@gmail.com>

pkgname=firefox-i18n-uk
pkgver=3.0.4
pkgrel=1
pkgdesc="Ukrainian language pack for Firefox"
arch=('i686' 'x86_64')
url="http://firefox.org.ua/mova"
license=('unknown')
depends=("firefox>=${pkgver}")
makedepends=('unzip')
source=(ftp://ftp.mozilla.org/pub/mozilla.org/firefox/releases/${pkgver}/linux-i686/xpi/uk.xpi)
md5sums=('96029bf1ded991d02dd9a88fa256bfeb')

build() {
  cd ${srcdir}
  unzip -o uk.xpi || return 1
  sed -i "s|jar:chrome/uk.jar|jar:uk.jar|" chrome.manifest || return 1
  install -D -m 644 chrome/uk.jar ${pkgdir}/usr/lib/firefox-3.0/chrome/uk.jar || return 1
  install -D -m 644 chrome.manifest ${pkgdir}/usr/lib/firefox-3.0/chrome/uk.manifest || return 1
}
