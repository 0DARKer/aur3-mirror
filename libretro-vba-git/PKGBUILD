# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-vba-git
pkgver=20130202
pkgrel=1
pkgdesc="libretro implementation of VBA. (Gameboy Advance)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/vba-next"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/libretro/vba-next.git"
_gitname="vba-next"

build() 
{
   cd $srcdir

   msg "Cloning vba-next from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   make -f Makefile.libretro
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/vba_next_libretro.so $pkgdir/usr/lib/libretro/libretro-vba.so
}

