# Contributor: Asparagus Maximus <asparagus.maximus () gmail () com>

pkgname=swiftdove-intel64-pgo
_pkgname=swiftdove
_swiftver=_intel-pgo_x86_64-arch

pkgver=2.0.0.22
pkgrel=1
pkgdesc="Swiftdove is an optimized build of the Mozilla Thunderbird mail/news client for Linux."
arch=('x86_64')
url="http://swiftweasel.tuxfamily.org/"
license=('MPL')
depends=(mozilla-common desktop-file-utils nss libxt libstdc++5 libgnomeui)
provides=(swiftdove)
source=(http://downloads.sourceforge.net/swiftweasel/$_pkgname-$pkgver$_swiftver.tar.gz \
swiftdove.desktop)
#swiftdove-2.0.0.21_intel-pgo_x86_64-arch.tar.gz
md5sums=(5a376b6d22e0071b2f68ec7621bcde1e \
d2505f6983625544e391ef874bef4835 )
         
build() {
  cd $startdir/src/
  mkdir $startdir/pkg/opt/
  cp -r $_pkgname $startdir/pkg/opt/$_pkgname
  mkdir -p $startdir/pkg/usr/bin
  ln -s /opt/$_pkgname/$_pkgname $startdir/pkg/usr/bin/$_pkgname

  mkdir -p $startdir/pkg/usr/share/applications
  mkdir -p $startdir/pkg/usr/share/pixmaps
  install -m644 $startdir/src/swiftdove.desktop $startdir/pkg/usr/share/applications/
  install -m644 $startdir/src/swiftdove/icons/mozicon50.xpm $startdir/pkg/usr/share/pixmaps/swiftdove.xpm
}

