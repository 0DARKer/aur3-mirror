pkgname=perl-music-tag
_pkgname=Music-Tag
pkgver=0.33
pkgrel=1
pkgdesc="Module for collecting information about music files"
arch=('any')
url="http://search.cpan.org/~ealleniii/Music-Tag/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-digest-sha1' 'perl-config-options' \
  'perl-lingua-en-inflect' 'perl-text-unaccent')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/E/EA/EALLENIII/${_pkgname}-$pkgver.tar.gz)
md5sums=('38cc1fd2292b17c0d8da6a4f4e4a5e94')

build() {
  cd $srcdir/${_pkgname}-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  find $pkgdir -name perllocal.pod -delete
  find $pkgdir -name .packlist -delete
}
