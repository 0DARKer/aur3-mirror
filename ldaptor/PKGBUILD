pkgname=ldaptor
pkgver=0.0.43
pkgrel=2
pkgdesc="A set of pure-Python LDAP client programs, applications and a programming library."
license=('gpl')
arch=('any')
url="http://www.inoi.fi/open/trac/ldaptor/wiki"
depends=('python')
source=(http://ftp.debian.org/debian/pool/main/l/$pkgname/${pkgname}_${pkgver}-0.4.tar.gz)
md5sums=('9d46a4b5b462e438368db29bf129feed')

build() {
    cd $srcdir/${pkgname}-${pkgver}/
    python setup.py build
    python setup.py install --root $pkgdir
}
