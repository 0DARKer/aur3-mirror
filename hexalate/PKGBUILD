# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=hexalate
pkgver=1.0.2
pkgrel=3
pkgdesc="A color matching game"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL3')
if [ -e /usr/bin/qmake ] || [ ! -e /usr/bin/qmake-qt4 ]; then
  depends=('qt5-base')
else
  depends=('qt4')
fi
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('42e919bf90b291fca099b56c4dcc0824')
sha256sums=('2f9730bb4863a182f1fcd61903d8d7f95ec2af8e445ee9ff9c0181079eab9096')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  if [ -e /usr/bin/qmake ]; then
    /usr/bin/qmake PREFIX=/usr
  else
    qmake-qt4 PREFIX=/usr
  fi
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
