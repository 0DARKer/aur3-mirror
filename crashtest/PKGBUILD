# Contributor: Ross Eldridge <ptepid@ptepid.org>
pkgname=crashtest
pkgver=1.1
pkgrel=2
pkgdesc="Educational car crash simulation"
url="http://bram.creative4vision.nl/crashtest/"
license="GPL"
depends=('ode' 'plib' 'fltk' 'alsa-lib')
makedepends=()
conflicts=()
replaces=()
backup=()
arch=(i686 x86_64)
source=(http://bram.creative4vision.nl/crashtest/$pkgname-$pkgver.tar.gz)
md5sums=('f739c1599a25d9a5c19e8f3289de00dd')

build() {
  cd $startdir/src/$pkgname-$pkgver/src-crashtest
  make || return 1
  make DESTDIR=$startdir/pkg install
  mkdir -p $startdir/pkg/usr/bin
  mv $startdir/pkg/usr/games/crashtest $startdir/pkg/usr/bin
  rmdir $startdir/pkg/usr/games
}
