# Contributor: The Green Arrow <revan@no-log.org>

pkgname=oneswarm
pkgver=0.7
pkgrel=1
pkgdesc="OneSwarm is a new peer-to-peer tool that provides users with explicit control over their privacy by letting them determine how data is shared."
url="http://oneswarm.cs.washington.edu/"
license=('GPL2')
arch=('i686' 'x86_64')
depends=('java-runtime=6')
options=(strip !docs)
install=${pkgname}.install



if [ "$CARCH" == "x86_64" ]; then
	myarch="x86_64"
	md5sums=('f0a60a028629145dd8a06976b9d55dc0' '0e948133ccb6d4448d740940cf536ad4' 'b9390770e89fafaa0d4d775c75431def')
else
		myarch="x86"
		md5sums=('462d681d132739f97b641b251a47b2b2' '0e948133ccb6d4448d740940cf536ad4' 'b9390770e89fafaa0d4d775c75431def')
 fi



source=(http://oneswarm.cs.washington.edu/builds/OneSwarm_${pkgver/./_}_linux_${myarch}.tar.gz \
	 oneswarm.jpg oneswarm.desktop)

build() {
  cd $srcdir
  mkdir $pkgdir/opt
  mv OneSwarm $startdir/pkg/opt/
  install -Dm644 oneswarm.jpg $startdir/pkg/usr/share/pixmaps/oneswarm.jpg
  install -Dm644 oneswarm.desktop $startdir/pkg/usr/share/applications/oneswarm.desktop
}

