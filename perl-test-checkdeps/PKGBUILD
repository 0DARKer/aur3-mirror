pkgname='perl-test-checkdeps'
pkgver='0.004'
pkgrel='2'
pkgdesc="Check for presence of dependencies"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-cpan-meta-check')
makedepends=()
url='http://search.cpan.org/dist/Test-CheckDeps'
source=('http://search.cpan.org/CPAN/authors/id/L/LE/LEONT/Test-CheckDeps-0.004.tar.gz')
md5sums=('bc18052363141e62a3b062a4479e8ece')
sha512sums=('c6647b527c39167f797bc7c0f95d4eb05bf79d89e01a1ff7d12f72f377a52d2021ce437f3398e1125e6fa789cd63a0cd91d2ac806923f10b10b8b2bb70e118f4')
_distdir="Test-CheckDeps-0.004"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

