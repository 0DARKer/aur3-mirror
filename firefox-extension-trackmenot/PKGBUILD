# Maintainer: GI_Jack <iamjacksemail@hackermail.com>
# Based on PKGBUILD firefox-extension-httpseverywhere

_plugin_name=trackmenot
_plugin_version=0.8.3
pkgdesc="Firefox extension to protect web habits from tracking and profiling"
license=('cc-by-nc-sa')

pkgname=firefox-extension-$_plugin_name
pkgver=$_plugin_version
pkgrel=1
arch=('any')
url="http://cs.nyu.edu/trackmenot/"
depends=("firefox>=3.5")
source=("http://cs.nyu.edu/trackmenot/xpi/trackmenot-$pkgver-fx.xpi")
md5sums=('5aa2d9ab77287c61dd3c858f47cc090e')
sha1sums=('9a2e5e5915d043ecf427dabb3bc0ed5cb1194cb4')
package(){
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  install -d $dstdir
  cp -r * $dstdir
  rm $dstdir/trackmenot-$pkgver-fx.xpi
  chmod -R 755 $dstdir
}
