# Maintainer: Piotr Gorski <pgorski88@gmail.com>

pkgname=mate-system-tools
pkgver=1.6.0
pkgrel=1
pkgdesc="Cross-platform configuration utilities for MATE"
arch=('i686' 'x86_64')
url="http://mate-desktop.org/"
license=('GPL2')
depends=('liboobs')
makedepends=('autoconf' 'automake-1.11' 'libtool' 'liboobs' 'system-tools-backends' 'intltool' 'pkg-config' 'mate-doc-utils' 'mate-common' 'mate-polkit' 'mate-file-manager')
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha1sums=('89d53c22171f6181ad4fb89387d4fa3300bb27b2')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./autogen.sh
	./configure --prefix=/usr LIBS="-lm"
	make
}

package(){
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
