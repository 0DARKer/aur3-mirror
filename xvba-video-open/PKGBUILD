#Maintainer: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=xvba-video-open
pkgver=0.8.0
pkgrel=2
pkgdesc="Opensource version of (xvba-vide) XvBA-to-libva api for RadeonHD video acceleration"
arch=('i686' 'x86_64')
url="http://www.splitted-desktop.com/~gbeauchesne/xvba-video/"
license=('GPL2')
depends=('catalyst>=10.12' 'xvba-sdk' 'libva')
options=(!libtool)
source=(http://www.splitted-desktop.com/~gbeauchesne/xvba-video/xvba-video-${pkgver}.tar.gz)

build() {
  cd "${srcdir}/xvba-video-${pkgver}"

  ./configure --disable-debug --prefix=/usr
  make PYTHON=python2
}

package() {
  cd "${srcdir}/xvba-video-${pkgver}"

  make DESTDIR="${pkgdir}" install
 }
md5sums=('d9ddec2e7f02c1fa533773918e88e311')
