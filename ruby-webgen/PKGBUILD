# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-webgen
_gemname=webgen
pkgver=0.5.14
pkgrel=1
pkgdesc="Is an easy-to-use, extensible web site generator in Ruby."
arch=(any)
url="http://webgen.rubyforge.org/"
license=(GPL)
depends=('ruby' 'ruby-cmdparse' 'ruby-kramdown')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('360b85699fe478539f10e4f03ad3a5ac')
 
build() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
 
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${_gemname}-${pkgver}.gem
}
