# Contributor: Jan Giesecke <JGiesecke@gmx.net>

pkgname=jaolt-svn
pkgver=506
pkgrel=1
pkgdesc="Java Auction Organisation and Listing Tool for eBay and AuVito"
arch=('i686' 'x86_64')
url="http://code.google.com/p/jaolt/"
license=('GPL')
depends=('java-runtime')
makedepends=('apache-ant')

source=(build.xml)
md5sums=('5181db4b2091275689ed037b1a0d272b')

_svntrunk=http://jaolt.googlecode.com/svn/trunk
_svnmod=jaolt

build() {
  cd ${srcdir}
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make ..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build


  sed "s|@PKGDIR@|$pkgdir|g" $srcdir/build.xml > build.xml
  /usr/share/java/apache-ant/bin/ant 
}
