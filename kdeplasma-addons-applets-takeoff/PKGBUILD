pkgname=kdeplasma-addons-applets-takeoff
_pkgname=takeoff
pkgver=0.1
pkgrel=1
pkgdesc="Takeoff is a full screen menu inpired in the aspect of Slingshot and the OS X Launchpad menu but adapted to the KDE users in a plasmoid."
url="http://kde-apps.org/content/show.php/Takeoff?content=144078"
arch=('i686' 'x86_64')
license=('GPL3')
source=("http://takeoff-launcher.googlecode.com/files/${_pkgname}-${pkgver}.tar.gz")
md5sums=('cfe70c2250a1d60ad99f79c619ed06cd')
depends=('kdelibs')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  qmake .
  make 
}

package() {
  cd ${srcdir}/${_pkgname}-${pkgver}/plasmoid/
  install -Dm 755 libplasma_applet_takeoff.so.1.0.0 ${pkgdir}/usr/lib/kde4/plasma_applet_takeoff.so
  install -Dm 644 plasma-applet-takeoff.desktop ${pkgdir}/usr/share/kde4/services/plasma-applet-takeoff.desktop
} 