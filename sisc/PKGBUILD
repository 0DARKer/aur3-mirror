# Contributor: Stefan Husmann <stefan-husmann@t-online.de

pkgname=sisc
pkgver=1.16.6
pkgrel=3
pkgdesc="Second Interpreter of Scheme Code"
arch=(any)
url="http://sisc.sourceforge.net/"
depends=('java-runtime' 'rlwrap')
license=('MPL' 'GPL2')
install=$pkgname.install
source=($pkgname.sh
http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('ec40fd5ae9776a13f788f28ece13f4eb' '15f2aa0c08b782d7882aa884846b902e')

build() {
    cd $srcdir/$pkgname-$pkgver/
    rm $pkgname.bat || return 1
    install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname || return 1
    install -d $pkgdir/usr/share/$pkgname || return 1
    cp -r $srcdir/$pkgname-$pkgver/* $pkgdir/usr/share/$pkgname || return 1
    install -d $pkgdir/etc/profile.d || return 1
    echo 'export SISC_HOME=/usr/share/$pkgname' > \
      $pkgdir/etc/profile.d/$pkgname.sh || return 1
    install -m 755 $startdir/src/$pkgname.sh $pkgdir/etc/profile.d || return 1
}

