# CPAN Name  : IPC-System-Simple
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
pkgname='perl-ipc-system-simple'
pkgver='1.21'
pkgrel='1'
pkgdesc="Run commands simply, with detailed diagnostics"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')

url='http://search.cpan.org/dist/IPC-System-Simple'

source=('http://search.cpan.org/CPAN/authors/id/P/PJ/PJF/IPC-System-Simple-1.21.tar.gz')
md5sums=('8215b62fe1b8447b99e17861e2255288')

build() {
  DIST_DIR="${srcdir}/IPC-System-Simple-1.21"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

