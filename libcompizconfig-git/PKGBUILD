pkgname=libcompizconfig-git
pkgver=0.9.5
pkgrel=1
pkgdesc="Latest development version of the Compiz configuration system library"
arch=('i686' 'x86_64')
url="http://compiz.org"
license=('GPL')
provides=('libcompizconfig')
conflicts=('libcompizconfig')
depends=('compiz-core-git' 'libxml2')
makedepends=('intltool' 'pkgconfig' 'cmake')
options=('!emptydirs' '!libtool')

build()
{
  cd "${srcdir}"
  git clone git://git.compiz.org/compiz/compizconfig/libcompizconfig

	cd "libcompizconfig"
	[[ -d build ]] || mkdir build
	cd build
	env PKG_CONFIG_PATH="/usr/lib/pkgconfig:$PKG_CONFIG_PATH"        \
		cmake .. -DCMAKE_INSTALL_PATH=/usr -DCMAKE_INSTALL_PREFIX=/usr \
                         -DCOMPIZ_PLUGIN_INSTALL_TYPE=compiz -DCOMPIZ_DESTDIR="${pkgdir}"
	make
	make install
	make findcompizconfig_install
}
