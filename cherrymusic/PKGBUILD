pkgname=cherrymusic
pkgver=0.21_0
pkgrel=1
pkgdesc="A standalone HTML5 (with Flash fallback) music streaming server based on CherryPy and jPlayer."
arch=('any')
url="http://fomori.org/cherrymusic"
license=('GPL3')
depends=('python>=3' 'python-cherrypy>=3')
makedepends=('python')
optdepends=('python3-stagger-svn')
options=(!emptydirs)
install=cherrymusic.install
source=($pkgname-${pkgver//_/-}.tar.gz::https://github.com/devsnd/cherrymusic/tarball/v0.21)
sha512sums=('166282c37b10b1e0b53f158ab23fa63f1e512419334f4fe919b052374c91c3d64606215a7bdeb460a5952925535b9b935481f027bd767014e889922d3596c999')

_gitpkgname=devsnd-$pkgname-e6bd3c2

package() {
  cd "$srcdir/$_gitpkgname"
  python setup.py install --root="$pkgdir/" --optimize=1
}

