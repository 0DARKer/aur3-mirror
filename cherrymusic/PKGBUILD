pkgname=cherrymusic
pkgver=0.21.1_0
pkgrel=1
pkgdesc="A standalone HTML5 (with Flash fallback) music streaming server based on CherryPy and jPlayer."
arch=('any')
url="http://fomori.org/cherrymusic"
license=('GPL3')
depends=('python>=3' 'python-cherrypy>=3')
makedepends=('python')
optdepends=('python3-stagger-svn' 'lame' 'vorbis-tools' 'flac' 'faad2' 'mpg123' 'ffmpeg')
options=(!emptydirs)
install=cherrymusic.install
source=($pkgname-${pkgver//_/-}.tar.gz::https://github.com/devsnd/cherrymusic/tarball/v0.21.1)
sha512sums=('7c6e4a16bfc4f6f2d28379c39f2cbc55300ab1ecc01e826cb6d77816d0f996431727d04887c943a8196d525979c5510091369be3c31194370bb08d7d5b83cd4b')

_gitpkgname=devsnd-$pkgname-fd225b3

package() {
  cd "$srcdir/$_gitpkgname"
  python setup.py install --root="$pkgdir/" --optimize=1
}

