pkgname=iscan-plugin-network
_pkgintname=iscan-network-nt
pkgver=1.1.0
_pkgver=1.1.0-2 # workaround for hyphen in package version
pkgrel=7
pkgdesc="Plugin for using Epson scanners with ISCAN over network"
arch=('i686' 'x86_64')
url="http://download.ebz.epson.net/dsc/search/01/search/?OSC=LX"
license=('custom:AVASYSPL')
depends=(iscan)
install=iscan-plugin-network.install
if [[ ${CARCH} = 'x86_64' ]]; then
    md5sums=('cd2adbc995715055c2fbad8059011e83')
    source=("iscan-network-nt.deb::http://a1227.g.akamai.net/f/1227/40484/1d/download.ebz.epson.net/dsc/f/01/00/01/63/26/69286af4304b9ae27a3141a5bab7a6f5af1299d6/${_pkgintname}_${_pkgver}_amd64.deb")
else
    md5sums=('95293cf0c599f3878e7a8f418f48c3d7')
    source=("iscan-network-nt.deb::http://a1227.g.akamai.net/f/1227/40484/1d/download.ebz.epson.net/dsc/f/01/00/01/63/26/257f09e56504258bf081b517086fa1f4f9de3c82/${_pkgintname}_${_pkgver}_i386.deb")
fi


build() {
    cd $srcdir
    bsdtar -xf data.tar.gz
}

package() {
    cd $srcdir
    cp -R usr $pkgdir
    install -Dm644 usr/share/doc/${_pkgintname}/AVASYSPL.en.txt $pkgdir/usr/share/licenses/${pkgname}/AVASYSPL
}
