# PKGBUILD generated by pacpan -mostly-
pkgname=perl-html-simpleparse
_realname=HTML-SimpleParse
pkgver=0.12
pkgrel=1
pkgdesc="Perl/CPAN Module HTML::SimpleParse - a bare-bones HTML parser."
arch=(i686 x86_64)
url="http://search.cpan.org/dist/${_realname}/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=(!emptydirs)
provides=('html-simpleparse')
source=(http://search.cpan.org/CPAN/authors/id/K/KW/KWILLIAMS/${_realname}-0.12.tar.gz)
md5sums=('f557818d78932654f9ca8dfeae2566b1')

build() {
  cd ${srcdir}/${_realname}-${pkgver}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
# END OF PACPAN PKGBUILD
