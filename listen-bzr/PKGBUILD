# Contributor: Alessio Biancalana <dottorblaster@gmail.com>

pkgname=listen-bzr
pkgver=1192
pkgrel=1
pkgdesc="Music player and management for GNOME (BZR Version)"
arch=('i686' 'x86_64')
url="http://www.listen-project.org/"
license=('GPL2')
depends=('python' 'pygtk'  'gstreamer0.10-python' 'pyinotify' 'gnome-python-extras' 'mutagen')
makedepends=('bzr' 'gettext' 'pkgconfig' 'intltool')
conflicts=('listen')
provides=('listen')
install=listen.install
source=()
md5sums=()

_bzrtrunk=lp:listen
_bzrmod=listen

build() {
  cd $startdir/src
  if [ -d "${srcdir}/${_bzrmod}" ] ; then
   cd ${_bzrmod} && bzr up
   msg "The local files are updated."
   else
   bzr checkout ${_bzrtrunk}
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  cd $_bzrmod

  # clean old builds
  make clean

  make CHECK_DEPENDS=0  PREFIX=/usr || return 1
  make DESTDIR=$startdir/pkg PREFIX=/usr install || return 1
}
