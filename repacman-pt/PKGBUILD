pkgname=repacman-pt
pkgver=0.98
pkgrel=1
pkgdesc="Versao portuguesa da ferramenta que reconstroi um pacote atravez dos softwares ja instalados com o pacman"
arch=('any')
url="http://archlinux.fr/repacman"
conflicts=('repacman' 'repacman-en')
license=('GPL')
_scriptname=repacman
source=("$pkgname-$pkgver.tar.gz")
md5sums=('66c60956816c697ab28de2aab28a0dc9')

build() {
    mkdir -p $pkgdir/usr/bin/
    install -m755 $_scriptname $pkgdir/usr/bin/
}
