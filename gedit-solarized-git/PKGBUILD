# Maintainer: OmeGa <omg@vmail.me>

pkgname=gedit-solarized-git
pkgver=20121202
pkgrel=1
pkgdesc="Precision colors for machines and people."
arch=('any')
url="https://github.com/mattcan/solarized-gedit"
license=('unknown')
depends=('gedit')
makedepends=('git')
provides=('gedit-solarized')

install='echo.install'

_gitroot="https://github.com/mattcan/solarized-gedit.git"
_gitname="gedit-solarized"

build() {
    cd $srcdir

    msg "Connecting to GIT server..."
    if [ -d $_gitname ]; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
    fi

    msg "GIT checkout done or server timeout."
}

package() {
    cd $srcdir/$_gitname
    install -Dm644 solarized-dark.xml "$pkgdir/usr/share/gtksourceview-3.0/styles/solarized-dark.xml"
    install -Dm644 solarized-light.xml "$pkgdir/usr/share/gtksourceview-3.0/styles/solarized-light.xml"
}
