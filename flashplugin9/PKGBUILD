# Contributor: Simone Pignatti <simo91.linux@gmail.com>
# Maintainer: (epsilom) Xavier Corredor <xavier.corredor.llano (a) gmail.com>

pkgname=flashplugin9
pkgver=9.0.280
pkgrel=1
pkgdesc="Adobe Flash Player 9 version"
arch=('i686')
url="http://www.macromedia.com/software/flashplayer/"
license="custom"
depends=('mozilla-common' 'libxt' 'gtk2')
provides=('flashplugin')
replaces=('flashplugin' 'flashplugin-universal' 'flashplugin-prerelease')
source=(http://fpdownload.macromedia.com/get/flashplayer/installers/archive/fp9r280_plus_archive.zip adobe_eula.txt)
md5sums=('2b6a81b74ec2eb74588670d6f3f61c71'
         '7d8638844b8be3e841ff29e0162577cb')
         
build() {
  install -d $pkgdir/usr/lib/mozilla/plugins
  cd $srcdir/fp9r280_and_higher_archive/9r280
  tar xvzf flashplayer9r280_linux.tar.gz
  install -m755 $srcdir/fp9r280_and_higher_archive/9r280/libflashplayer.so \
    $pkgdir/usr/lib/mozilla/plugins || return 1
  # install license
  install -D -m644 $srcdir/adobe_eula.txt \
    $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1
}
