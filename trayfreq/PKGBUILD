pkgname=trayfreq
pkgver=0.3
pkgrel=3
pkgdesc="Gtk2 application that runs in the system tray and displays information about battery and lets you control your CPU frequency"
arch=('i686' 'x86_64')
url=("http://trayfreq.sourceforge.net")
license=('GPL')
depends=('gtk2')
makedepends=()
source=(http://batchbin.ueuo.com/source/$pkgname-$pkgver.tar.gz)
md5sums=('af79002e7738a2ad1b339a9d4576d22b')


build() {
	#cd "$srcdir/${pkgname}-${pkgver/.dev2/-dev2}"
	#unset CXXFLAGS
	#unset CFLAGS
	#./configure --prefix=/usr --disable-setsuid
	make all --directory=$srcdir/$pkgname-archlinux-master
}

package() {
#  cd "$srcdir/${pkgname}-${pkgver/.dev2/-dev2}"
  make install INSTALL_PATH=$pkgdir --directory=$srcdir/$pkgname-archlinux-master
}
