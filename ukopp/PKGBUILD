# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=ukopp
pkgver=3.8
pkgrel=1
pkgdesc="A backup program for USB devices"
url="http://kornelix.squarespace.com/ukopp"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2' 'xdg-utils')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('fe93027aee7070236cfd22d5a4638781')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  sed -i 's#/local##' Makefile
  make PREFIX=/usr CFLAGS+="-c $(pkg-config --cflags gtk+-2.0)" \
    LFLAGS+="`pkg-config --libs gtk+-2.0 gthread-2.0`" 
  sed -i 's#/local##' desktop
  sed -i 's+^# ++' desktop
}
package() { 
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop
  make DESTDIR=$pkgdir install
}
