pkgname=shoutcast_trans
pkgver=0.40
pkgrel=1
pkgdesc="Nullsoft SHOUTcast Streaming Client"
arch=('i686' 'x86_64')
url="http://www.shoutcast.com"
license=('custom')
depends=(gcc)
md5sums=(8a6341eb30286a796336d9dcf9ffe986)
source=(http://yp.shoutcast.com/downloads/sc_trans_posix_040.tgz)
backup=(etc/sc_trans.conf)

build() {
  cd $srcdir/sc_trans_040
  install -d $pkgdir/usr/bin
  install -m 755 sc_trans_linux $pkgdir/usr/bin/shoutcast_trans
  install -d $pkgdir/etc
  install -m 644 sc_trans.conf $pkgdir/etc
}
