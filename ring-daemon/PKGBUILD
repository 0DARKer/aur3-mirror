pkgname=ring-daemon
pkgver=2.2.0
pkgrel=1
pkgdesc="Ring daemon"
license=('GPL')
arch=('i686' 'x86_64')
url="http://ring.cx/"
depends=('yaml-cpp' 'opendht-git')
makedepends=('dbus-c++')
source=("git+https://gerrit-ring.savoirfairelinux.com/ring-daemon#tag=${pkgver}")
md5sums=('SKIP')

prepare() {
  cd "${srcdir}/ring-daemon"
}

build() {
  cd "${srcdir}/ring-daemon"
  pushd contrib
  mkdir -p native
  pushd  native
  ../bootstrap
  make
  popd
  popd
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/ring-daemon"
  make DESTDIR="$pkgdir" install
}

