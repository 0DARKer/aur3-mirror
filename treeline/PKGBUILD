pkgname=treeline
pkgver=1.4.0
pkgrel=1
pkgdesc="Tree outliner and PIM which stores any kind of information within a tree structure"
arch=(any)
url="http://treeline.bellz.org"
license=('GPL')
depends=('python2-pyqt' 'ispell' 'pyxml')
conflicts=('treeline-unstable')
replaces=('treeline-unstable')
source=("http://download.berlios.de/${pkgname}/${pkgname}-$pkgver.tar.gz" 
        "http://download.berlios.de/${pkgname}/${pkgname}-i18n-${pkgver}a.tar.gz")
md5sums=('0599213dea90472e4466a5d08fe1fa3a'
         '388837c01e672b482375ac481f914195')
sha256sums=('6d5c8dc0d8128ba31920ab9974ab7b883031265e3142ee85b94417e1dfa0c34c'
            '50c1ccfa8ff3ff0c0146839669753d435ad0818e2deed2c13a1fa1e217afc08d')

build() {
  cd "${srcdir}/TreeLine"
  python2 install.py -p /usr -b "${pkgdir}"
}
