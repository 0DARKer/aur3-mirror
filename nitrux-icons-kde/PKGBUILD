# Maintainer: localizator <localizator at ukr dot net>

pkgname=nitrux-icons-kde
pkgver=2.3c
pkgrel=1
pkgdesc="This is the KDE version of the Nitrux OS Icons."
url="http://deviantn7k1.deviantart.com/art/Nitrux-OS-Icons-for-KDE-346895844"
arch=('any')
license=('Creative Commons')
source=("nitrux_os_icons_for_kde_by_deviantn7k1-d5qj6jo.7z::http://localizator.googlecode.com/files/nitrux_os_icons_for_kde_by_deviantn7k1-d5qj6jo.7z")
depends=('kdebase-workspace')
md5sums=('0a8784ebaef908779e122fe75350ca63')
makedepends=()
options=(!strip)

build() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/usr/share/icons
  cp -r NITRUX* ${pkgdir}/usr/share/icons/
  find "${pkgdir}"/usr/share/icons -type d -exec chmod 755 '{}' \;
  find "${pkgdir}"/usr/share/icons -type f -exec chmod 644 '{}' \;
}
