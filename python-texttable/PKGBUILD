pkgname='python-texttable'
_pkgname='texttable'
pkgver=0.8.1
pkgrel=1
pkgdesc="Generate a formatted text table using ASCII characters"
url="http://foutaise.org/code/texttable/"
arch=('any')
license=('LGPL')
depends=('python')
source=("https://pypi.python.org/packages/source/t/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('f7bada98b993531a4150961e143760b6e34532ea0f49a92964fe7149989164bad6380222e896bc81907ac99ee775e926de543d95f351a66e96ccedf4d081a646')

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --root="$pkgdir/"
}
