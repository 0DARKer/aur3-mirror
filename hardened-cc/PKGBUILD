pkgname=hardened-cc
pkgver=1.32
pkgrel=4
pkgdesc='Wrapper for GCC to easily build hardened packages. Modified hardening-wrapper (Ubuntu) script.'
arch=('any')
license=('unknown')
url='https://wiki.ubuntu.com/Security/HardeningWrapper'
depends=('perl')
source=('hgcc')
sha256sums=('5dbcc1030722ddf34ee5f1feaac71dea952c4cb0f2c4e229755df15004799dfd')

build() {
	cd "$srcdir"
	sed "s|gcc|g++|g" hgcc > hg++
	touch hg*
}

package() {
	mkdir -p -m 0755 "$pkgdir/usr/bin/"
	install -v -m 0555 -o root -p "$srcdir"/* -t "$pkgdir/usr/bin/"
}
