# Maintainer: Kyle <kyle@gmx.ca>
# Contributor: JoKoT3 <jokot3 at gmail dot com>
# Contributor: Christopher Brannon <chris@the-brannons.com>
pkgname=svox-pico-git
pkgver=20130521
pkgrel=1
pkgdesc="Small footprint text-to-speech engine"
arch=('i686' 'x86_64')
url="http://android.git.kernel.org/?p=platform/external/svox.git;a=summary"
source=('0008-64bits.patch' 'autogen.sh' 'configure.ac' 'Makefile.am' 'pico2wave.c')
md5sums=('0983a652612f9398b3cc12fbeb750695' '467ae4f4619ded94b940a12d79425844' '75f9c9309ac31895e30bbd0a9a2bec63' '9e95798e864b4e2ffcbbc7527b6d6434' '87aac4be9acbac512bcbc0e7e67e441f')
license=('APACHE')
groups=()
makedepends=('git')
depends=('popt')
options=('!libtool')

_gitroot="https://android.googlesource.com/platform/external/svox"
_gitname="svox-pico"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth=1 -b "master" $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
mkdir "$srcdir/$_gitname-build" && cd "$srcdir/$_gitname" && ls -A | grep -v .git | xargs -d '\n' cp -r -t ../$_gitname-build
  cd "$srcdir/$_gitname-build/pico"
  # see patches from debian packager @ http://packages.debian.org/sid/libttspico-utils
   patch -p2 < "$srcdir/0008-64bits.patch"
  # files below are based on the work of debian packager (patch 0001 to 0006) and adapted to works with autotools 1.13+
  cp -pr "$srcdir/autogen.sh" "$srcdir/Makefile.am" "$srcdir/configure.ac" "$srcdir/$_gitname-build/pico/"
  mkdir -p "$srcdir/$_gitname-build/pico/bin/" && cp -p "$srcdir/pico2wave.c" "$srcdir/$_gitname-build/pico/bin/"
  [ -x ./autogen.sh ] || chmod u+x autogen.sh
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build/pico"
  make DESTDIR="$pkgdir/" install
} 

