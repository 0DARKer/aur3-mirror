# Maintainer: Patrick Palka <patrick@parcs.ath.cx>
# Development: http://closure.ath.cx/aur-dev

pkgname=symfony
pkgver=1.4.9
pkgrel=1
pkgdesc="A web-application framework for PHP projects"
arch=('any')
url="http://symfony-project.org/"
license=('MIT')
depends=('php')
optdepends=('php-xsl: for compatability with Propel')
source=("http://www.symfony-project.org/get/$pkgname-$pkgver.tgz"
        "$pkgname.install")
install=$pkgname.install

package() {
    cd "$pkgname-$pkgver"

    install -vDm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

    cp -vR . "$pkgdir/usr/share/$pkgname"

    mkdir -vp "$pkgdir/usr/bin"
    ln -s "../share/$pkgname/data/bin/$pkgname" "$pkgdir/usr/bin/"
}

md5sums=('9d12549babac9e9eab25fee7c9be4461'
         '60aa394355b0c3a8e6185b1af67453e0')
