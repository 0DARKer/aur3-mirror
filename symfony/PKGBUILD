# Maintainer: Patrick Palka <patrick@parcs.ath.cx>
# Development: http://git.lambda.ath.cx/web.cgi

pkgname=symfony
pkgver=1.4.8
pkgrel=3
pkgdesc="A web-application framework for PHP projects"
arch=('any')
url="http://symfony-project.org/"
license=('MIT')
depends=('php')
optdepends=('php-xsl: for compatability with Propel')
source=("http://www.symfony-project.org/get/$pkgname-$pkgver.tgz" "$pkgname.install")
md5sums=('87f475f0bb9129f2288a204d4fdc9c32' '60aa394355b0c3a8e6185b1af67453e0')
install=$pkgname.install

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -vDm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  cp -R . "$pkgdir/usr/share/$pkgname"
  install -vdm755 "$pkgdir/usr/bin"
  ln -s "../share/$pkgname/data/bin/$pkgname" "$pkgdir/usr/bin/"
}
