pkgname=symfony
_pkgname=Symfony
pkgver=2.0.5
pkgrel=1
pkgdesc="A web-application framework for PHP projects"
arch=('any')
url="http://symfony-project.org/"
license=('MIT')
depends=('php')
optdepends=('php-xsl: for compatibility with Propel')
source=(
    "$pkgname-$pkgver.tgz::http://symfony.com/download?v=Symfony_Standard_Vendors_$pkgver.tgz"
    "$pkgname.bash"
)

install=$pkgname.install

package() {
    cd "$_pkgname"

    install -d "$pkgdir/usr/share"
    cp -R . "$pkgdir/usr/share/$pkgname"

    install -d "$pkgdir/usr/bin"
    ln -s "../share/$pkgname/data/bin/$pkgname" "$pkgdir/usr/bin/"

    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 ../$pkgname.bash "$pkgdir/etc/bash_completion.d/$pkgname"
}

md5sums=('d880a289784a0f40f95c56edc950b229'
         'a4f0ff6b167b839f569f71c5cd7ef29f')
