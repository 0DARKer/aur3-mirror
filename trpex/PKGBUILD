# Maintainer: Your Name <iam at redsquirrel dot tk>

pkgname=trpex
pkgver=1.0
pkgrel=2
pkgdesc="A simple tool to extract files and info from a PS3 game's TROPHY.TRP"
arch=('i686' 'x86_64')
url="http://www.redsquirrel87.com/trpex.html"
license=('GPL3')
makedepends=('gcc' 'sudo')
source=($pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('dbe77e5065723cc3ed81ed957c7a5b27')


build() {
  cd $srcdir/$pkgname-$pkgver
  gcc main.c -o trpex
  sudo mv trpex /usr/bin/trpex
  sudo chmod +x  /usr/bin/trpex
}
