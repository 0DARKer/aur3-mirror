pkgname=sir
pkgver=2.6
pkgrel=2
pkgdesc="Simple image resizer in qt4" 
arch=('i686' 'x86_64')
url="http://sir.projet-libre.org/" 
license=('GPLv2') 
depends=('qt4' 'exiv2')
optdepends=("dcraw: RAW images support")
source=("http://sir.googlecode.com/files/sir_$pkgver.tar.gz") 

build() {
     cd "$srcdir/$pkgname"
     [ -d bld ] || mkdir bld && cd bld
     cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
              -DQT_QMAKE_EXECUTABLE=/usr/bin/qmake-qt4
     make || return 1 
}
package() {
     cd "$srcdir/$pkgname/bld"
     make DESTDIR="$pkgdir/" install
}  
sha1sums=('55d0b15af262e13560ceb80fba42410a8dcb2a71')
