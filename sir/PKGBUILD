pkgname=sir
pkgver=2.5.1
pkgrel=1
pkgdesc="Simple image resizer in qt4" 
arch=('i686' 'x86_64')
url="http://sir.projet-libre.org/" 
license=('GPLv2') 
depends=('qt' 'exiv2')
optdepends=("dcraw: RAW images support")
source=("http://sir.googlecode.com/files/sir_$pkgver.tar.gz") 

build() {
     cd ${srcdir}/sir
     mkdir ${pkgdir}/usr
     cmake -DCMAKE_INSTALL_PREFIX=${pkgdir}/usr -Dmetadata=ON || return 1
     make || return 1 
}
package() {
     cd ${srcdir}/sir
     make install
}  
sha1sums=('5565bd9a63dffebc0a455b3ef84cc88c97d614b5')