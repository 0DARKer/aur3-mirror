pkgname=sir
pkgver=2.6
pkgrel=1
pkgdesc="Simple image resizer in qt4" 
arch=('i686' 'x86_64')
url="http://sir.projet-libre.org/" 
license=('GPLv2') 
depends=('qt4' 'exiv2')
optdepends=("dcraw: RAW images support")
source=("http://sir.googlecode.com/files/sir_$pkgver.tar.gz") 

build() {
     cd ${srcdir}/sir
     mkdir ${pkgdir}/usr
     cmake -DCMAKE_INSTALL_PREFIX=${pkgdir}/usr -DQT_QMAKE_EXECUTABLE=qmake-qt4 -Dmetadata=ON || return 1
     make || return 1 
}
package() {
     cd ${srcdir}/sir
     make install
}  
sha1sums=('55d0b15af262e13560ceb80fba42410a8dcb2a71')
