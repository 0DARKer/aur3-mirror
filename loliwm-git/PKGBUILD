pkgname=loliwm-git
pkgver=r64.8aa5cc2
pkgrel=2

pkgdesc='Wayland "window manager" based on wlc.'
url='https://github.com/Cloudef/loliwm'
arch=('i686' 'x86_64')
license=('GPL')

depends=('wayland-git' 'pixman' 'libxkbcommon' 'wlc-git')
makedepends=('git' 'cmake')
optdepends=('weston-git: To test weston clients in loliwm')

provides=('loliwm')
conflicts=('loliwm')

source=('git://github.com/Cloudef/loliwm')

md5sums=('SKIP')

options=('debug' '!strip')

pkgver() {
    cd loliwm
    printf 'r%s.%s' "$(git rev-list --count HEAD)" "$(git describe --always)"
}

build() {
    cd loliwm
    cmake -DCMAKE_INSTALL_PREFIX=/usr
    make
}

package() {
    cd loliwm
    make DESTDIR="$pkgdir" install
}
