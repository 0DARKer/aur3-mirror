# Contributed by: Jens Staal <staal1978@gmail.com>
pkgname=heirloom-ex-vi-cvs
pkgver=111210
pkgrel=1
pkgdesc="The traditional Vi"
arch=('i686' 'x86_64')
url="http://ex-vi.sourceforge.net/"
license=('Custom:BSD')
provides=('vi')
depends=('heirloom-cvs')
source=('Makefile')
md5sums=('0ec32da8150d604aadc0dcde39226ed1')
makedepends=('cvs')


build() {
	cvs -d:pserver:anonymous:@heirloom.cvs.sourceforge.net:/cvsroot/ex-vi login
	
	cvs -d:pserver:anonymous:@heirloom.cvs.sourceforge.net:/cvsroot/ex-vi co ex-vi

        cp Makefile ${startdir}/src/ex-vi/Makefile
	cd ${startdir}/src/ex-vi
        
        make || return 1
}

package() {
	cd ${startdir}/src/ex-vi
        
        make install

        install -Dm644 $srcdir/ex-vi/LICENCE $pkgdir/usr/share/licences/ex-vi/LICENCE
}