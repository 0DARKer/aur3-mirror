# Upstream removed the tarball from his website and didn't provide tags on github

pkgname=ocaml-dbus
pkgver=0.29
pkgrel=2
pkgdesc="OCaml bindings for the D-Bus API"
arch=('i686' 'x86_64')
url="https://github.com/vincenthz/ocaml-dbus"
license=('LGPL')
makedepends=('ocaml' 'ocaml-findlib')
options=('!strip')
install=
source=(http://ftp.fr.debian.org/debian/pool/main/o/ocaml-dbus/ocaml-dbus_$pkgver.orig.tar.gz)
md5sums=('e07a97c4a31a970d0cc230bd68d55057')

build() {

  cd "$srcdir/ocaml_dbus-$pkgver"

  make all || return 1
  OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"
  install -d $OCAMLFIND_DESTDIR || return 1

  OCAMLDESTDIR=$OCAMLFIND_DESTDIR make install || return 1

}

