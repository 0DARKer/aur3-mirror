# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rails2xx
_gemname=rails
pkgver=2.3.12
pkgrel=1
pkgdesc="Is an open source web application framework for the Ruby programming language."
arch=(any)
url="http://www.rubyonrails.org/"
license=('MIT')
depends=('ruby' 'ruby-activesupport2xx' 'ruby-activerecord2xx' \
'ruby-actionpack2xx' 'ruby-actionmailer2xx' 'ruby-activeresource2xx')
source=(http://gems.rubyforge.org/gems/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('55fe9cdabe6a750e2633dc060fe40cff')

build() {
  cd "$srcdir"
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" ${_gemname}-${pkgver}.gem
}
