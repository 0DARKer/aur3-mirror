# For ArchLinux by Joel Porquet

pkgname=jpass-web-git
pkgver=r3.201ed42
pkgrel=1
pkgdesc="JPass password manager - web application"
url="https://joel.porquet.org/wiki/hacking/jpass-web/"
arch=('any')
license=('GPL3')
depends=('jpass-git' 'python' 'python-bottle' 'python-flup-hg')
makedepends=('git')

source=("${pkgname}::git+https://joel.porquet.org/cgit/cgit.cgi/jpass-web.git/")
md5sums=('SKIP')

pkgver() {
    cd ${pkgname}
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd ${pkgname}

    install -d "$pkgdir/usr/share/webapps/jpass"

    install -m 0555 *.py "$pkgdir/usr/share/webapps/jpass/"

    install -d "$pkgdir/usr/share/webapps/jpass/static/css"
    install -d "$pkgdir/usr/share/webapps/jpass/static/js"

    install -m 0444 static/css/*.css "$pkgdir/usr/share/webapps/jpass/static/css"
    install -m 0444 static/js/*.js "$pkgdir/usr/share/webapps/jpass/static/js"

    install -d "$pkgdir/usr/share/webapps/jpass/views"

    install -m 0444 views/*.tpl "$pkgdir/usr/share/webapps/jpass/views"
}
