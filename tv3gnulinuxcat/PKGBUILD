# Maintainer: Roger Bassons "rogertux" <rogerbassons@gmail.com>
pkgname=tv3gnulinuxcat
pkgver=072
pkgrel=1
epoch=
pkgdesc="Download videos from TV3"
arch=(any)
url="http://www.gnulinux.cat/"
license=('GPLv3')
groups=()
depends=('zenity' 'vlc')
makedepends=()
checkdepends=()
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=(http://sourceforge.net/projects/gnulinuxcattv3/files/tv3-v${pkgver}.tar.gz/download)
md5sums=('c9ceb83592a4251605b0ed99d0447858')


package() {
  cd "${srcdir}"
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/icons
  mkdir -p $pkgdir/usr/share/applications
  cp tv3 $pkgdir/usr/bin/
  chmod +x $pkgdir/usr/bin/tv3
  cp deb/tv3-icon.png $pkgdir/usr/share/icons
  cp deb/tv3.desktop $pkgdir/usr/share/applications/tv3.desktop
 }
