#Base: macfonts
#Fixes: https://bugzilla.mozilla.org/show_bug.cgi?id=491114
#Maintainer: Shanto (at hotmail.com)
#Contributor: Erus <erus.iluvatar@gmail.com>
pkgname=ttf-mac-fonts
pkgver=1
pkgrel=1
pkgdesc="Mac fonts including Apple Garamond, Lucida Grande and others"
arch=('any')
url="http://www.apple.com/safari/"
license=('apple-safari')
depends=()
makedepends=()
conflicts=('macfonts')
source=(
	'http://ompldr.org/vOGxyeA/macfonts.tar.gz'
	'http://images.apple.com/legal/sla/docs/SafariWindows.pdf'
)
md5sums=(
	'2bdba26eacef4c1fe1adc3ab3df2aa6e'
	'f1da33ecf42f770093a2930cacff33b4'
)

build() {
cd $srcdir/
install -d $pkgdir/usr/share/fonts/{TTF,Type1}
install *.{ttf,TTF} $pkgdir/usr/share/fonts/TTF
install *.{pfm,PFM,PFB} $pkgdir/usr/share/fonts/Type1
install -d $pkgdir/usr/share/licenses/$pkgname
install SafariWindows.pdf $pkgdir/usr/share/licenses/$pkgname/
}
