# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=libsdp
pkgver=1.1.107
pkgrel=2
pkgdesc="LD_PRELOAD-able library for using SDP"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('glibc')
source=("http://www.openfabrics.org/downloads/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('d52454595e510c0d01df906f2361e557')
sha512sums=('36fd8be5ecb8ae842213e1871f66a252a4bd976562a8e35b0cd3b4b1b1dafba061696f1bbb7f28060d9fed23b2d83eed2fd725d975e0ede0523a43cdbe59442b')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" mandir='${prefix}/share/man' sysconfdir="/etc" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  chmod 644 "${pkgdir}/etc/libsdp.conf"
}
