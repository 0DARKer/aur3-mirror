# Contributor: Dan Serban

pkgname=audio-recorder-from-deb
pkgver=0.4.4
pkgrel=1
pkgdesc="Record audio from your soundcard and microphone"
arch=(i686)
url="https://launchpad.net/~osmoma/+archive/audio-recorder"
license=(GPLv3)
depends=(gnome-media gstreamer0.10-base-plugins gstreamer0.10-good-plugins)
source=("http://ppa.launchpad.net/osmoma/audio-recorder/ubuntu/pool/main/a/audio-recorder/audio-recorder_0.4.4~maverick_i386.deb")
md5sums=('91d46de890e915f5be46c627e27d3e00')

build()
{
  ar -xv "audio-recorder_0.4.4~maverick_i386.deb"
  tar -xvf data.tar.gz
  mv usr "$pkgdir"
}
