# Maintainer: Dan Serban

pkgname=audio-recorder-from-deb
pkgver=0.4.4
pkgrel=5
pkgdesc="Record audio from your soundcard and microphone"
arch=(i686)
url=https://launchpad.net/audio-recorder
license=(GPLv3)
depends=(dbus-core glib2 glibc atk cairo dbus-glib fontconfig freetype2 gconf gdk-pixbuf2 gnome-media gstreamer0.10 gstreamer0.10-base gstreamer0.10-base-plugins gstreamer0.10-good-plugins gstreamer0.10-bad-plugins gstreamer0.10-ugly-plugins gtk2 libpng12 libpulse libxml2 pango)
source=("http://ppa.launchpad.net/osmoma/audio-recorder/ubuntu/pool/main/a/audio-recorder/audio-recorder_0.4.4~maverick_i386.deb"
        "http://archive.ubuntu.com/ubuntu/pool/main/g/gnome-media/libgnome-media0_2.31.6-0ubuntu2_i386.deb")
md5sums=('91d46de890e915f5be46c627e27d3e00'
         '4a1df39996ce5e8c7c97b6c5dcb4106d')
conflicts=('audio-recorder-bzr')
provides=('audio-recorder')

build()
{
  ar -xv "audio-recorder_0.4.4~maverick_i386.deb"
  bsdtar -xvf data.tar.gz
  rm data.tar.gz
  ar -xv "libgnome-media0_2.31.6-0ubuntu2_i386.deb"
  bsdtar -xvf data.tar.gz
  rm data.tar.gz
  mv usr "$pkgdir/"
}
