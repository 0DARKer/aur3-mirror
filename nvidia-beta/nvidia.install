run_depmod() {
  KERNVER=`uname -r | cut -d'.' -f-2`
  EXTRAMODULES="extramodules-$KERNVER-ARCH"
  depmod $(cat /lib/modules/$EXTRAMODULES/version)
}

post_install() {
  run_depmod
}

post_upgrade() {
  run_depmod
  rmmod nvidia || echo 'In order to use the new nvidia module, exit Xserver and unload it manually.'
}

post_remove() {
  run_depmod
}
