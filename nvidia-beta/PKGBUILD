# Maintainer: Det
# Contributors: Ng Oon-Ee, Dan Vratil
# Based on [extra]'s nvidia: https://www.archlinux.org/packages/extra/x86_64/nvidia/

pkgname=nvidia-beta
pkgver=340.24
pkgrel=1
pkgdesc="NVIDIA driver for linux (beta)"
arch=('i686' 'x86_64')
url="http://www.nvidia.com/"
license=('custom:NVIDIA')
depends=('linux' 'nvidia-libgl-beta' "nvidia-utils-beta=$pkgver")
makedepends=('linux-headers')
provides=('nvidia')
conflicts=('nvidia-96xx' 'nvidia-173xx' 'nvidia')
options=('!strip')
install=$pkgname.install

# Arch/Installer name
_arch='x86_64'
_pkg="NVIDIA-Linux-$_arch-$pkgver-no-compat32"
if [ "$CARCH" = 'i686' ]; then
  _arch='x86'
  _pkg="NVIDIA-Linux-$_arch-$pkgver"
fi

# Source
source=("http://us.download.nvidia.com/XFree86/Linux-$_arch/$pkgver/$_pkg.run")

# MD5
_md5=$(echo $source.md5 | sed 's_http://us._ftp://_')
if ! md5sums=$(curl -s $_md5 | cut -d " " -f1); then
  md5sums=('b71118e3e3ae9b227bf6f17a2cc8c726')  # NVIDIA-Linux-x86_64-$pkgver-no-compat32
  [ "$CARCH" = 'i686' ] && md5sums=('edd4c618265d22ef4d2b28baf070c6ff')  # NVIDIA-Linux-x86-$pkgver
fi

# Patch
if [ -f *.patch ]; then
  source+=('nvidia-linux-3.16.patch')
  md5sums+=('bf3ad68be85b212f00e9efc0246ce8f5')
fi

prepare() {
  # Remove previous builds
  if [ -d $_pkg ]; then
    rm -rf $_pkg
  fi

  # Extract
  msg2 "Self-Extracting $_pkg.run.."
  sh $_pkg.run -x
  cd $_pkg

  # Patch
  if [ -f "$srcdir"/*.patch ]; then
    _kernel=$(cat /usr/lib/modules/extramodules-*-ARCH/version)
    _major_patch=$(ls "$srcdir"/*.patch | grep -Po "\d+\.\d+")
    if [[ $_kernel =~ $_major_patch ]]; then
      msg2 "Updating for linux $_kernel..."
      patch -p1 -i "$srcdir"/nvidia-linux-$_major_patch.patch
    fi
  fi
}

build() {
  # Version of 'linux'
  _major=$(pacman -Q linux | grep -Po "\d+\.\d+")
  _extramodules=extramodules-$_major-ARCH
  _kernel=$(cat /usr/lib/modules/$_extramodules/version)

  # Main module
  cd $_pkg/kernel
  msg2 "Building Nvidia module for $_kernel..."
  make SYSSRC=/usr/lib/modules/$_kernel/build module

  # UVM
  cd uvm
  msg2 "Building UVM module for $_kernel...: https://devblogs.nvidia.com/parallelforall/unified-memory-in-cuda-6/"
  make SYSSRC=/usr/lib/modules/$_kernel/build module
}

package() {
  # Version of 'linux'
  _major=$(pacman -Q linux | grep -Po "\d+\.\d+")
  _extramodules=extramodules-$_major-ARCH

  # Install
  install -Dm644 $_pkg/kernel/nvidia.ko \
                 "$pkgdir"/usr/lib/modules/$_extramodules/nvidia.ko

  # Unified Memory
  install -Dm644 $_pkg/kernel/uvm/nvidia-uvm.ko \
                 "$pkgdir/usr/lib/modules/$_extramodules/nvidia-uvm.ko"

  # Compress
  gzip "$pkgdir"/usr/lib/modules/$_extramodules/nvidia*.ko

  # Write _extramodules to .install
  sed -i "s/_extramodules='.*'/_extramodules='$_extramodules'/" "$startdir"/$install

  # Blacklist Nouveau
  install -d "$pkgdir"/usr/lib/modprobe.d/
  echo "blacklist nouveau" >> "$pkgdir"/usr/lib/modprobe.d/nvidia.conf
}