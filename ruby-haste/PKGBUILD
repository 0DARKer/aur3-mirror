# Contributor: Matt Harrison <matt at mistbyte dot com>

pkgname=ruby-haste
_gemname=${pkgname#ruby-}
pkgver=0.1.3
pkgrel=1
pkgdesc="A simple client for uploading data to haste-server. All you do it pipe data in STDIN."
arch=('any')
url="https://github.com/seejohnrun/haste-client"
license=('MIT')
groups=()
depends=('ruby-json')
makedepends=('rubygems')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://gems.rubyforge.org/gems/${_gemname}-${pkgver}.gem")
noextract=("${_gemname}-${pkgver}.gem")
md5sums=('539928349a2ed96ba815293727b025a2')

build() {
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
              -n "$pkgdir/usr/bin" ${_gemname}-$pkgver.gem
}

