# Maintainer: neersighted <n@neersighted.com>
# Contributor: Matt Harrison <matt at mistbyte dot com>

pkgname=ruby-haste
pkgver=0.1.3
pkgrel=1
pkgdesc='Simple client for uploading text to a haste-server (hastebin)'
url='https://github.com/seejohnrun/haste-client'
license=('MIT')
source=("https://rubygems.org/downloads/haste-${pkgver}.gem")
md5sums=('539928349a2ed96ba815293727b025a2')
sha1sums=('19d2bdb2911a19d4cf08c1d236211df81302fc38')
sha256sums=('86d0f0b1895c33192910acd15e8922658ddd381fa9fafffe3cde34be7e2de85f')
arch=('any')
depends=('ruby' 'ruby-json')
makedepends=('git' 'ruby')
conflicts=('ruby-haste')
provides=('ruby-haste')

package() {
  cd ${srcdir}

  # Install the program.
  gem install --no-user-install --ignore-dependencies \
    -i ${pkgdir}$(ruby -e 'puts Gem.default_dir') \
    -n ${pkgdir}/usr/bin \
    haste-${pkgver}.gem
}

