# Contributer: giacomogiorgianni@gmail.com 

pkgname=tunein-radio-vlc
_name=Tunein-Radio-VLC
pkgver=1.$code
pkgrel=1
code=9075a50
pkgdesc="This is a Service Discovery LUA Script to TuneIn Radio for VLC 2.X.X"
arch=('any')
url="https://github.com/diegofn/TuneIn-Radio-VLC"
license=('GPL')
categories=()
depends=('vlc>=2' 'lua')
makedepends=()
options=(!emptydirs)
install=${pkgname}.install
source=("diegofn-$_name-$code.tar::https://nodeload.github.com/diegofn/TuneIn-Radio-VLC/tarball/master" "$pkgname.install")
md5sums=('70d7aded96af309029f9cc93ac56b782' '2d3f63cf26204b8cf643950885820a93')

build() {
  cd ${srcdir}/diegofn-TuneIn-Radio-VLC-9075a50
  mkdir -p $pkgdir/$HOME/.local/share/vlc/lua/sd
  
  install -m 0775 ./tunein.lua $pkgdir/$HOME/.local/share/vlc/lua/sd/
  cp -pR ${srcdir}/diegofn-TuneIn-Radio-VLC-9075a50/playlist $pkgdir/$HOME/.local/share/vlc/lua 
  cp -pR ${srcdir}/diegofn-TuneIn-Radio-VLC-9075a50/resources $pkgdir/$HOME/.local/share/vlc/lua 
echo "		ATTENZION!!!!!! insert user and password variables --> tunein.lua "
}