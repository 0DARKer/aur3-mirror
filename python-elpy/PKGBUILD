# Maintainer: Renato Garcia <fgarcia.renato@gmail.com>

pkgname=python-elpy
pkgver=1.0
pkgrel=1
pkgdesc="Package to bring powerful Python editing to Emacs."
arch=('any')
url="https://github.com/jorgenschaefer/elpy"
license=('GPL')
depends=('python' 'flake8')
options=(!emptydirs)
source=("https://github.com/jorgenschaefer/elpy/archive/v${pkgver}.tar.gz")
md5sums=('9d5538e8a54d5b8e8c82104812d35756')

package() {
  cd "${srcdir}/elpy-${pkgver}"
  python setup.py install --root="${pkgdir}/" --optimize=1
}
