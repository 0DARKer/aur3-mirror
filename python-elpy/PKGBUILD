pkgname=python-elpy
pkgver=20130719.2030
_pkgver=7bf3a9824cb62a50d692dad2d6576f22b5d2ad9d
pkgrel=1
pkgdesc="Package to bring powerful Python editing to Emacs."
arch=('any')
url="https://github.com/jorgenschaefer/elpy"
license=('GPL')
depends=('python' 'flake8')
options=(!emptydirs)
source=("http://github.com/jorgenschaefer/elpy/archive/${_pkgver}.zip")
md5sums=('dd3c8255b6902bed90f56cac84b8663b')

package() {
  cd "${srcdir}/elpy-${_pkgver}"
  python setup.py install --root="${pkgdir}/" --optimize=1
}
