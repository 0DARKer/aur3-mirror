# Maintainer: <kfgz at interia dot pl>

pkgname=tpc
pkgver=0.30
pkgrel=1
pkgdesc="Tool for undervolting/overclocking Family 11h (K8L) and Family 10h (K10) AMD processors."
arch=('i686' 'x86_64')
url="http://amdath800.dyndns.org/amd/"
license=('custom')
depends=('gcc-libs')
install=tpc.install
source=(http://amdath800.dyndns.org/amd/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('7d4889ca8208b46e06b0072468b3fe64')

build() {
  cd ${srcdir}/src

  if [ "${CARCH}" = "x86_64" ]; then 
   c++ -m64 TurionPowerControl.cpp cpuPrimitives.cpp Processor.cpp config.cpp \
   scaler.cpp Griffin.cpp K10Processor.cpp MSVC_Round.cpp -o tpc
  else
   c++ -m32 -D_FILE_OFFSET_BITS=64 TurionPowerControl.cpp cpuPrimitives.cpp Processor.cpp \
   config.cpp scaler.cpp Griffin.cpp K10Processor.cpp MSVC_Round.cpp -o tpc
  fi 
}

package() {
  install -dm755 ${pkgdir}/usr/{bin,share/doc/tpc}
  install -m755 ${srcdir}/src/tpc ${pkgdir}/usr/bin
  install -m644 ${srcdir}/doc/readme.pdf ${pkgdir}/usr/share/doc/tpc
}
