build() {
	cd "${srcdir}"
	for _langfile in *.xpi; do
		_lang=${_langfile/.xpi/}
		_lang=${_lang/firefox-beta-i18n-${pkgver}-/}
		bsdtar xf ${_langfile}
		sed -i "s|jar:chrome/${_lang}.jar|jar:${_lang}.jar|" chrome.manifest
		install -D -m 644 chrome/${_lang}.jar "${pkgdir}/usr/lib/firefox-${pkgver}/chrome/${_lang}.jar"
		install -m 644 chrome.manifest "${pkgdir}/usr/lib/firefox-${pkgver}/chrome/${_lang}.manifest"
	done
}

