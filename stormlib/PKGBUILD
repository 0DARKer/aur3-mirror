# Maintainer: Jerome Leclanche <jerome.leclanche+arch@gmail.com>
# Contributor: theluda <theluda@getmangos.com>

pkgname=stormlib
_pkgname=StormLib # Directory name in the ZIP file
pkgver=8.21
pkgrel=3
pkgdesc="A C/C++ API to read and write MPQ files with support for merged archives, patch MPQs and more."
arch=('i686' 'x86_64')
url="http://www.zezula.net/en/mpq/stormlib.html"
license=('MIT')
depends=('bzip2' 'zlib')
makedepends=('cmake')
source=("http://www.zezula.net/download/$pkgname.zip")
sha256sums=('2db47f1074b2d4c01672dbbefbceb18cd6e920e4177c6ab833e52369356301b8')

build() {
	cd "$srcdir/$_pkgname"
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd "$srcdir/$_pkgname"
	make DESTDIR="$pkgdir" install
}
