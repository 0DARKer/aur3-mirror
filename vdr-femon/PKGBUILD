# Contributor: Maik Opitz <maik@fjordblau.de>
# Maintainer: David Spicer <azleifel at gmail dot com>

pkgname=vdr-femon
_pluginname=femon
pkgver=2.0.2
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="DVB Frontend Status Monitor plugin for VDR"
url="http://www.saunalahti.fi/rahrenbe/vdr/femon/"
license=('GPL2')
depends=('vdr>=2.0.0')
source=(http://www.saunalahti.fi/rahrenbe/vdr/femon/files/${pkgname}-${pkgver}.tgz)
md5sums=('f76847d9e2c39d30038114f05b5b6e15')

build() {
  cd "${srcdir}/${_pluginname}-${pkgver}"

  make
}

package() {
  cd "${srcdir}/${_pluginname}-${pkgver}"

  make DESTDIR="${pkgdir}" install

  # Install documents
  install -d -m755 "${pkgdir}/usr/share/doc/${pkgname}"
  for _file in README HISTORY; do
    install -m644 ${_file} "${pkgdir}/usr/share/doc/${pkgname}"
  done
}
