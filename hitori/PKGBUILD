pkgname=hitori
pkgver=0.2.3
pkgrel=1
pkgdesc="A GTK version of the Hitori puzzle game"
arch=('i686' 'x86_64')
url="http://live.gnome.org/Hitori"
license=('GPL3')
depends=('gtk2')
makedepends=('intltool' 'gnome-doc-utils')
source=(http://ftp.acc.umu.se/pub/GNOME/sources/hitori/0.2/hitori-0.2.3.tar.gz)
md5sums=('ffb76516f904f5ab1b7e24024044e1e7')


build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
  
}


