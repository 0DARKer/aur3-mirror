# Contributor: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-settings-daemon-nopulse
pkgver=3.0.1
pkgrel=1
pkgdesc="The GNOME Settings daemon, without PulseAudio support"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libgnomekbd' 'gnome-desktop' 'libnotify' 'hicolor-icon-theme'
         'libcanberra' 'gsettings-desktop-schemas' 'nss' 'gconf' 'dconf')
makedepends=('intltool' 'gtk-doc')
options=('!emptydirs' '!libtool')
install=gnome-settings-daemon.install
url="http://www.gnome.org"
groups=('gnome')
provides=(gnome-settings-daemon)
conflicts=(gnome-settings-daemon)
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-settings-daemon/3.0/gnome-settings-daemon-${pkgver}.tar.bz2)
sha256sums=('51cdd0842b907e95c79d4e2b26f554e26fc626f7c2e6c3a14e3fc7954ca91117')

build() {
  cd "${srcdir}/gnome-settings-daemon-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
      --libexecdir=/usr/bin --disable-static --disable-pulse
  make
}

package() {
  cd "${srcdir}/gnome-settings-daemon-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
