# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on [extra]'s resourceproto

pkgname=resourceproto-git
pkgver=20110612
pkgrel=1
pkgdesc="X11 Resource extension wire protocol - Git version"
arch=('any')
url="http://xorg.freedesktop.org/"
license=('custom')
makedepends=('git')
provides=('resourceproto=99')
conflicts=('resourceproto')

_gitroot=git://git.freedesktop.org/git/xorg/proto/${pkgname/-*}
_gitname=${pkgname/-*}

build() {
  msg "Connecting to git.freedesktop.org GIT server...."

  if [ -d $_gitname ] ; then
     cd $_gitname && git pull origin && cd ..
     msg "The local files are updated."
  else
     git clone --depth 1 $_gitroot
  fi

  msg "GIT checkout done or server timeout"

  msg "Starting make..."
  cd $_gitname
  ./autogen.sh --prefix=/usr
  make
}

package(){
  cd $_gitname
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/${pkgname/-*}/COPYING"
}