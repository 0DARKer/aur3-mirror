# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=nodejs-grunt-cli
_npmname=grunt-cli
pkgver=0.1.6
pkgrel=1
pkgdesc="Grunt cmdline interface"
arch=('any')
depends=('nodejs')
url="https://npmjs.org/package/grunt-cli"
license=('MIT')
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz
        nodejs-grunt-cli.install)
noextract=($_npmname-$pkgver.tgz)
sha256sums=('e4fbfd42830325e191b7f4f92e84bdac944e94d8dda4f8daeb3cf4d7e9bd90b8'
            'dbd0c5d62c0a8a7559175e8a26282915f83cbfe4fb04b7ec2f7569bb8816aecd')
provides=('nodejs-grunt-cli')
install=nodejs-grunt-cli.install

build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
