pkgname=lib32-gtk-engines
pkgver=2.20.2
pkgrel=1
pkgdesc="Theme engines for GTK+ 2"
arch=('x86_64')
url="http://live.gnome.org/GnomeArt"
license=('GPL' 'LGPL')
groups='lib32'
depends=('lib32-gtk2')
source=(http://www.gtlib.gatech.edu/pub/linux/distributions/archlinux/extra/os/i686/gtk-engines-${pkgver}-${pkgrel}-i686.pkg.tar.xz)
md5sums=('9e89ac3d00ead878d6c883eacaedba47')

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr/lib/gtk-2.0/2.10.0
  cp -rPf ${startdir}/src/usr/lib/gtk-2.0/2.10.0/engines $startdir/pkg/opt/lib32/usr/lib/gtk-2.0/2.10.0
}
