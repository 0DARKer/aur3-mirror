# Maintainer: josephgbr <rafael.f.f1 at gmail dot com>

_pkgbasename=gtk-engines
pkgname=lib32-$_pkgbasename
pkgver=2.20.2
pkgrel=3
pkgdesc="Theme engines for GTK+ 2 (32 bit)"
arch=('x86_64')
url="http://live.gnome.org/GnomeArt"
license=('LGPL')
depends=('lib32-gtk2>=2.22.0' "$_pkgbasename")
makedepends=('intltool' 'gcc-multilib')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/$_pkgbasename/${pkgver%.*}/$_pkgbasename-$pkgver.tar.bz2)
sha256sums=('15b680abca6c773ecb85253521fa100dd3b8549befeecc7595b10209d62d66b5')

build() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  ./configure --prefix=/usr --libdir=/usr/lib32 \
  			--enable-animation CC='gcc -m32'
  make
}

package() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm -rf ${pkgdir}/usr/share
}
