# Contributor: Brian Moore <archlinux@cptl.org>
pkgname=shellinabox
pkgver=2.10
pkgrel=3
pkgdesc="A web-based ssh client."
arch=('i686' 'x86_64')
url="http://shellinabox.com/"
license=('GPL2')
optdepends=('openssh: SSL support')
makedepends=(openssh)
install=shellinabox.install
source=("http://shellinabox.googlecode.com/files/$pkgname-$pkgver.tar.gz" "shellinaboxd.rc.d" "shellinaboxd.conf.d")
md5sums=('0e144910d85d92edc54702ab9c46f032'
         'feea22575089cc7eb4925b1daff88b8c'
         '77e487f36da2abe51251500f4a1e024f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr

  make || return 1
}
package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR=$pkgdir install || return 1

  install -Dm755 $srcdir/shellinaboxd.rc.d $pkgdir/etc/rc.d/shellinaboxd || return 1
  install -Dm644 $srcdir/shellinaboxd.conf.d $pkgdir/etc/conf.d/shellinaboxd || return 1

}
