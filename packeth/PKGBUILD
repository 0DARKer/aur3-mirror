# Maintainer: Rudy Matela <rudy.matela@gmail.com>
pkgname=packeth
pkgver=1.6.5
pkgrel=2
pkgdesc="A Linux GUI packet generator tool for ethernet."
depends=(gtk2)
source=("http://downloads.sourceforge.net/packeth/packETH-$pkgver.tar.bz")
url="http://packeth.sourceforge.net/"
md5sums=('1dca0c28774a196db13548001a843840')
arch=('i686' 'x86_64')
license=('GPL')

build() {
  cd $srcdir/packETH-$pkgver
  ./configure --prefix=/usr
  /usr/bin/make
}

package() {
  cd $srcdir/packETH-$pkgver
  /usr/bin/make install DESTDIR=$pkgdir
}

