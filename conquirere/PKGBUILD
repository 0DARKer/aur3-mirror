# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=conquirere
pkgver=0.1.git20130207
pkgrel=1
pkgdesc="A Nepomuk powered research tool"
arch=('i686' 'x86_64')
url="https://projects.kde.org/projects/playground/edu/conquirere"
license=('GPL')
depends=('kdebase-runtime' 'kdepimlibs' 'qjson' 'kbibtex-devel' 'nepomuk-webminer')
makedepends=('cmake' 'automoc4' 'doxygen' 'boost')
install=$pkgname.install
source=("conquirere.tar.gz::http://quickgit.kde.org/?p=conquirere.git&a=snapshot&h=50c57bd3fb5ee17fd988945f85895f6192e1ed46&fmt=tgz" $pkgname.install)
md5sums=('0fdb4ec5e605d8a14b2b2676235accfb'
         'dc1079cf1f785631621386f5dd0948dc')

build() {
  cd $pkgname
  mkdir build
  cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
  make
}

package() {
  cd $pkgname/build
  make DESTDIR=$pkgdir install
}
