# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=conquirere
pkgver=0.1.git20121020
pkgrel=1
pkgdesc="A Nepomuk powered research tool"
arch=('i686' 'x86_64')
url="https://projects.kde.org/projects/playground/edu/conquirere"
license=('GPL')
depends=('kdebase-runtime' 'kdepimlibs' 'qjson' 'kbibtex-devel' 'nepomuk-metadata-extractor')
makedepends=('cmake' 'automoc4' 'doxygen' 'boost')
install=$pkgname.install
source=("conquirere.tar.gz::http://quickgit.kde.org/?p=conquirere.git&a=snapshot&h=ae7d311cd1a3ec917788cc6bf3d4e51e3a76bad8&fmt=tgz" $pkgname.install)
md5sums=('abea15aad944cb67fb44e431c943aed0'
         'dc1079cf1f785631621386f5dd0948dc')

build() {
  cd $srcdir/$pkgname
  mkdir build
  cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/$pkgname/build
  make DESTDIR=$pkgdir install
}
