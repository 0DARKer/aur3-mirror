# Maintainer: Jonathan Wiersma <archaur at jonw dot org>

pkgname=eclipse-dtp
pkgver=1.8.2
pkgrel=1
pkgdesc="Data Tools Platform for Eclipse"
arch=('any')
url="http://www.eclipse.org/datatools/"
license=('EPL')
depends=( 'eclipse' 'eclipse-emf' 'eclipse-gef' )
noextract=("dtp-sdk_$pkgver.zip")
source=("ftp://mirror.csclub.uwaterloo.ca/eclipse/datatools/downloads/${pkgver%.*}/dtp_$pkgver.zip")

package() {
	cd $srcdir || return 1
	jar xf dtp_$pkgver.zip || return 1
	install -dm755 $pkgdir/usr/share/eclipse/dropins/dtp/ || return 1
	find eclipse -type f -exec install -Dm644 {} \
		$pkgdir/usr/share/eclipse/dropins/dtp/{} \; || return 1
}
md5sums=('00e9b3a5fcca7e8e874f5203b5a405a9')
