_pkgname=pylibmc
pkgname=python2-${_pkgname}
pkgver=1.2.1
pkgrel=2
pkgdesc="libmemcached wrapper"
url="http://pypi.python.org/pypi/pylibmc"
license="GPL"
arch=("i686" "x86_64")
depends=("python2" "libmemcached")
makedepends=("gcc" "zlib" "python2-distribute")
source=(http://pypi.python.org/packages/source/p/${_pkgname}/${_pkgname}-${pkgver}.tar.gz)

build() {
	cd $srcdir/${_pkgname}-$pkgver
	python2 setup.py install --root=$pkgdir || return 1
}
md5sums=('1131007be07877050cf95772280302a2')
sha512sums=('6e2ccd32f3b9c56d4a4a96f3ecad41a04cd2a49ff8db7eddb452639e0231607c5a65fd41b9578bd86f4326022a8866ecb89703c30c11f0ee6e9171a987864562')