pkgname=python2-pylibmc
pkgver=1.1.1
pkgrel=1
pkgdesc="libmemcached wrapper"
url="http://pypi.python.org/pypi/pylibmc"
license="GPL"
arch=("i686" "x86_64")
depends=("python2" "libmemcached")
makedepends=("gcc" "zlib")
source=(http://pypi.python.org/packages/source/p/pylibmc/pylibmc-1.1.1.tar.gz)

build() {
	cd $srcdir/pylibmc-$pkgver
	python2 setup.py install --root=$pkgdir || return 1
}
