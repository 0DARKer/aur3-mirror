_pkgname=pylibmc
pkgname=python2-${_pkgname}
pkgver=1.2.2
pkgrel=2
pkgdesc="libmemcached wrapper"
url="http://pypi.python.org/pypi/pylibmc"
license="GPL"
arch=("i686" "x86_64")
depends=("python2" "libmemcached")
makedepends=("gcc" "zlib")
source=(http://pypi.python.org/packages/source/p/${_pkgname}/${_pkgname}-${pkgver}.tar.gz)

build() {
	cd $srcdir/${_pkgname}-$pkgver
	python2 setup.py install --root=$pkgdir || return 1
}
md5sums=('94ea743e50103fcb7792e11ca62291b0')
sha512sums=('644591e297ddffce76b1f84b807008e492828dd1b00337029b2efd16cb65a62fd1767e00293f89b9c49b262765213e479f96fdf15544cce0a04b0bd1d8258fdb')
