# Maintainer: Anton Bazhenov <anton.bazhenov at gmail>
# Contributor: Simone Lazzaris <simone@omni.it>

pkgname=xpe
pkgver=0.9.5b
pkgrel=1
pkgdesc="Graphical editor for Povray based on wxWidgets library"
arch=('i686' 'x86_64')
url="http://nextpe.sourceforge.net/"
license=('GPL')
depends=('wxgtk')
source=("http://downloads.sourceforge.net/nextpe/${pkgname}_project_v${pkgver//./_}.tar.gz")
md5sums=('3a875f7aa2bc058bd299c1db9aabf067')

build() {
  cd "${srcdir}/${pkgname}_project"
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}_project"
  make DESTDIR="${pkgdir}" install || return 1
}

