# Contributor: Simone Lazzaris <simone@omni.it>
pkgname=xpe
pkgver=0.9.3
pkgrel=1
pkgdesc="neXtgen Povray Editor"
arch=('i686')
url="http://nextpe.sourceforge.net/"
license=('GPL')
groups=()
depends=('wxgtk')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=('http://downloads.sourceforge.net/nextpe/xpe_project_v0_9_3.tar.gz')
noextract=()
md5sums=(533bfb6d0fa052e5dd97210472750e27) 

build() {
  sed -i '261 s/^/#include<algorithm>/' "$srcdir/xpe_project/src/xpe_components/editor/ini_enlighter.cpp"
  sed -i '410 s/^/#include<algorithm>/' "$srcdir/xpe_project/src/xpe_components/editor/pov_enlighter.cpp"
  cd "$srcdir/xpe_project"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}

