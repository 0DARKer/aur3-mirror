# Maintainer: Kyle Keen <keenerd@gmail.com>

pkgname=kona-git
pkgver=20110408
pkgrel=1
pkgdesc="An open-source implementation of the K language, an ASCII APL."
url="https://github.com/kevinlawler/kona"
arch=('i686' 'x86_64')
license=('ISC')
depends=('')
conflicts=('kona')
provides=('kona')
optdepends=('rlwrap: for a nicer repl')
source=()
md5sums=()
_gitroot="git://github.com/kevinlawler/kona.git"
_gitname="kona"

build() {
  cd "$srcdir"
  msg "Connecting to github..."

  if [ -d "$srcdir"/${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Building..."

  cd "$srcdir/$_gitname"

  make PREFIX="/usr"
}

package() {
  cd "$srcdir/$_gitname"
  install -d "$pkgdir/bin"
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/kona/LICENSE"
  make PREFIX="$pkgdir" install
}
