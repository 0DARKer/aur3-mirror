# Maintainer: boenki <boenki at gmx dot de>
# Contributor: sujith_m82 <m.sujith@gmail.com>

pkgname=consonance
pkgver=0.5.1
pkgrel=8
pkgdesc="A lightweight GTK+ music manager"
arch=('i686' 'x86_64')
url="http://sites.google.com/site/consonancemanager/"
license=(GPL)
depends=('libao' 'taglib' 'libmad' 'libnotify' 'libsndfile' 'curl' 'libmodplug' 'libcdio')
source=(http://cloud.github.com/downloads/sujith/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('2a195dd2314f7b65cc57cc871a4c5a47')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
  install -Dm644 data/$pkgname.png $pkgdir/usr/share/pixmaps/$pkgname.png
}