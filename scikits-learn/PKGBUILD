# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=scikits-learn
pkgver=0.9
pkgrel=1
pkgdesc="A set of python modules for machine learning and data mining"
arch=('i686' 'x86_64')
url="http://scikit-learn.sourceforge.net/"
license=('BSD')
depends=('python2' 'python2-numpy' 'python2-scipy' 'scikits-base')
makedepends=('python2-distribute' 'gcc')
options=(!emptydirs)

source=("http://downloads.sourceforge.net/project/scikit-learn/scikit-learn-${pkgver}.tar.gz")
md5sums=('25491af8dde7be9138f7e1d283bb3a50')

build() {
  cd "$srcdir/scikit-learn-${pkgver}"

  unset LDFLAGS

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
  rm "$pkgdir/`python2 -c 'from distutils.sysconfig import get_python_lib; \
    print get_python_lib()'`/scikits/__init__.py"
}

