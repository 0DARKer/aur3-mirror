# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>

pkgname=scikits-learn
pkgver=0.10
pkgrel=2
pkgdesc="A set of python modules for machine learning and data mining"
arch=('i686' 'x86_64')
url="http://scikit-learn.sourceforge.net/"
license=('BSD')
depends=('python2-scipy' 'scikits-base')
makedepends=('python2-distribute')
options=(!emptydirs)

source=("http://downloads.sourceforge.net/project/scikit-learn/scikit-learn-${pkgver}.tar.gz" 
        "LICENSE")
md5sums=('6e1d9f0e69b7b23f8c77fe92393d12c0'
         '327083d2576cc0aad1b8f10b2bcd2974')

build() {
  cd "$srcdir/scikit-learn-${pkgver}"

  unset LDFLAGS

  python2 setup.py install --root="$pkgdir"/ --optimize=1
  rm "$pkgdir/`python2 -c 'from distutils.sysconfig import get_python_lib; \
    print get_python_lib()'`/scikits/__init__.py"

  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
         -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
    $(find "${pkgdir}" -name '*.py')

  install -D "$srcdir"/LICENSE "$pkgdir"/usr/share/licenses/scikits-learn/LICENSE
}

