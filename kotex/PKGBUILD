# Contributor: jdj <djin.joo@gmail.com>

pkgname=kotex
pkgver=20110504
pkgrel=1
pkgdesc="ko.tex, a Korean language support for LaTeX"
url="http://project.ktug.or.kr/ko.TeX/"
arch=('any')
license=('GPLv3')
depends=('texlive-core' 'kotex-util')
optdepends=('kotex-extra-hlfont')
makedepends=()
conflicts=()
replaces=()
backup=()
install='kotex.install'
source=(
  "http://ftp.ktug.or.kr/KTUG/ko.TeX/kotex-dist-${pkgver}.tar.gz"
)
md5sums=(
  '8d2199f1fa1f36d6031f9ac1c116f3b7'
)
noextract=(
  "kotex-dist-${pkgver}.tar.gz"
)

package() {
  _dest="$pkgdir/usr/share/texmf-dist"
  mkdir -p $_dest
  cd "${srcdir}"
  tar zxf kotex-dist-${pkgver}.tar.gz -C "$_dest"

  chmod 755 $_dest/*
  chmod 755 $_dest/bibtex/bst
  chmod 755 $_dest/fonts/afm
  chmod 755 $_dest/fonts/sfd
  chmod 755 $_dest/fonts/map
  chmod 755 $_dest/fonts/misc
  chmod 755 $_dest/fonts/truetype
  chmod 755 $_dest/fonts/type1
  chmod 755 $_dest/fonts/tfm
  chmod 755 $_dest/fonts/vf
  chmod 755 $_dest/fonts/misc/xetex
  chmod 755 $_dest/fonts/misc/xetex/fontmapping
  chmod 755 $_dest/fonts/map/dvips
  chmod 755 $_dest/tex/plain
  chmod 755 $_dest/tex/xelatex
  chmod 755 $_dest/tex/latex
  chmod 755 $_dest/tex/luatex
  chmod 755 $_dest/tex/lualatex
  chmod 755 $_dest/tex/context
  chmod 755 $_dest/tex/xetex
  chmod 755 $_dest/tex/context/third

  # remove files which conflict with kotex-fonts
  #cd "$pkgdir/usr/share/texmf-dist/fonts"
  #rm -f fea/kotex-dev/luatexko/luakodefault.fea
  #rm -f misc/xetex/fontmapping/kotex-dev/xetexko/jamo-pua.map
  #rm -f misc/xetex/fontmapping/kotex-dev/xetexko/jamo-pua.tec
}

