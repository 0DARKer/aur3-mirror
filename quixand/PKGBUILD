#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=quixand
pkgver=2012.02.18.5149
pkgrel=14
pkgdesc='A tool for creating single-use unrecoverable encrypted sandboxes.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/quixand"
depends=(encfs)
source=(http://xyne.archlinux.ca/projects/quixand/archives/quixand-2012.02.18.5149.tar.xz)
sha512sums=(f7902779bf929857ade60b1827c49f379dad34ce975d244e013fb564002f3ba8370db9c80d42c260276205072b347754e32cdfcc281c5619c09dd712f58002cb)
md5sums=(a345576e90660d57eeb1230d81b2ed62)

build () 
{ 
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
  install -D -m644 "$srcdir/$pkgname-$pkgver/man/$pkgname.1.gz" "$pkgdir/usr/share/man/man1/$pkgname.1.gz"
}


