#Maintainer: Justin Kueser <justin dot kueser @ gmail dot com>
pkgname=ibniz
pkgver=1.1
pkgrel=1
pkgdesc="Ideally Bare Numeric Impression giZmo"
depends=('sdl')
arch=('any')
license=('ZLIB')
url="http://pelulamu.net/ibniz/"
source=(http://pelulamu.net/ibniz/$pkgname-$pkgver.tar.gz)
sha512sums=('870a4ad3271ea8eab63464bdc3c283210661dcb6d496dcbef5f4615ac115c477499a2b40ecbf6645a4ba6d86eccc06f1dc7fccfecabd5d22920fe56a8329ca36')

build() {

cd "$srcdir/$pkgname-$pkgver"
make

}

package() {

cd "$srcdir/$pkgname-$pkgver"
install -D -m755 ibniz "$pkgdir/usr/bin/ibniz"
install -D -m644 licence.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

}
