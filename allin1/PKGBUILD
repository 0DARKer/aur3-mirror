pkgname=allin1
pkgver=0.5.0
pkgrel=1
pkgdesc="All in one monitoring dockapplet"
url="http://allinone.sf.net"
license="GPL"
depends=('x-server')
source=(http://dl.sourceforge.net/sourceforge/allinone/$pkgname-$pkgver.tar.gz \
  allin1.conf)
md5sums=('aecceae899cb040051ec4bbb205bfb5b' '127d8c6c25f2e034331a7d0a84574581')
build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  mkdir -p $startdir/pkg/usr/bin 
  cp src/$pkgname $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/usr/share/$pkgname 
  cp ../allin1.conf $startdir/pkg/usr/share/$pkgname 
  mkdir -p $startdir/pkg/usr/man/man1
  cp docs/$pkgname.1 $startdir/pkg/usr/man/man1
}
