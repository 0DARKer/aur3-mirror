# Maintainer: Jakub Kozisek <nodevel at gmail dot com>

pkgname=read-me
pkgver=0.1.5
pkgrel=1
pkgdesc="A desktop reader for Google Reader"
arch=('i686' 'x86_64')
url="http://www.atareao.es/ubuntu/software-para-tu-ubuntu/google-reader-en-tu-escritorio-de-ubuntu-gracias-a-read-me/"
license=('GPLv3')
depends=('python2-gconf' 'pycrypto' 'pywebkitgtk' 'python-simplejson' 'python-lxml' 'python2-httplib2')
source=(https://launchpad.net/~atareao/+archive/atareao/+files/${pkgname}_$pkgver-1ubuntu1_all.deb)

build() {
    msg "Extracting..."
    ar -xv ${pkgname}_${pkgver}-1ubuntu1_all.deb || return 1
    tar -xvf data.tar.gz || return 1
    msg2 "Done extracting!"
    cd usr/share/applications
    sed -i 's|Exec=python /usr/share/read-me/read-me|Exec=python2 /usr/share/read-me/read-me|' read-me.desktop
    cd ../read-me
    sed -i 's|settings.props.gtk_button_images = True||' read-me
    sed -i 's|#! /usr/bin/python|#! /usr/bin/python2|' read-me
    msg "Moving files"
    mv $srcdir/usr $pkgdir/usr
    msg2 "Done moving files"

}
md5sums=('30b0caa55e2cc105f6eccb3211758075')