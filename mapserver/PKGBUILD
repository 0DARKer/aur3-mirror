# Maintainer: Samuel Mesa <samuelmesa@linuxmail.org>
# Contributor: Marcos Piccinini <x@nofxx.com>
pkgname=mapserver
pkgver=6.2.1
pkgrel=5
pkgdesc="Platform for publishing spatial data and interactive mapping applications to the web"
arch=(i686 x86_64)
license=('MIT')
url="http://www.mapserver.org"
depends=('libpng' 'freetype2' 'gd' 'zlib' 'gdal' 'proj' 'libjpeg-turbo' 'libxml2' 'libpqxx' 'pdflib-lite' 'geos' 'agg' 'apache' 'mod_fastcgi' 'python2' 'php' 'php-apache' )
makedepends=('cfitsio')
options=()
source=("http://download.osgeo.org/mapserver/mapserver-6.2.1.tar.gz")
md5sums=('8c48991dc54a307076b1fb670bc59ef9')

build() {
  echo ${startdir}/src/${pkgname}-${pkgver} 
  cd ${startdir}/src/${pkgname}-${pkgver}

  ./configure  --prefix=/usr \
               --enable-point-z-m \
               --with-freetype=/usr/ \
               --with-libiconv \
               --with-gd \
               --with-proj \
               --with-threads \
               --with-geos \
               --with-ogr \
               --with-gdal \
               --with-postgis \
               --with-wcs \
               --with-wfs \
               --with-wmsclient \
               --with-wfsclient \
               --with-curl-config \
               --with-cairo \
               --with-warnings \
               --with-kml \
               --with-jpeg \
               --with-png \
               --with-threads \
               --with-apache-module \
               --with-fastcgi=/usr  \
               --with-sos \
               --with-xml2-config=/usr/bin/xml2-config \
               --with-python=/usr/bin/python2 \
               --enable-python-mapscript \
               --with-php=yes \
                --with-apxs \
               --enable-debug 
  make
}


package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

# To compile with Arcgis SDE Support:
#   --with-sde-version=90 \
#   --with-sde=/usr/sde/sdeexe90 \

