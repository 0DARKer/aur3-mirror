# Contributor: Anonymous
# Generator  : CPANPLUS::Dist::Arch 0.14
pkgname='perl-test-output'
pkgver='0.16'
pkgrel='1'
pkgdesc="Utilities to test STDOUT and STDERR messages."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-sub-exporter' 'perl-test-tester>=0.107')
url='http://search.cpan.org/dist/Test-Output'
source=('http://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/Test-Output-0.16.tar.gz')
md5sums=('d7a4bd06f682089bd0b432e6df94cfef')

build() {
  _DISTDIR="${srcdir}/Test-Output-0.16"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -delete
  find "$pkgdir" -name perllocal.pod -delete
}
