pkgname=drnuget
pkgver=20131110
pkgrel=2
pkgdesc="Script to download tv programs from http://www.dr.dk/tv/"
arch=(any)
url="https://koldfront.dk/git/$pkgname"
license=('GPL')
depends=('perl-file-slurp' 'perl-libwww' 'perl-json' 'wget')
source=("http://koldfront.dk/git/$pkgname/plain/$pkgname")
md5sums=('e60eacd58b22c414b8a7743fc4518df4')

package () {
	install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
