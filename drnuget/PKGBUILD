# Maintainer: Louis Tim Larsen <louis(a)louis.dk>
pkgname=drnuget
pkgver=3f4f307
pkgrel=1
pkgdesc="Script to download tv programs from http://www.dr.dk/tv/"
arch=(any)
url="https://koldfront.dk/git/$pkgname"
license=('GPL')
depends=('perl-file-slurp' 'perl-libwww' 'perl-json' 'wget')
makedepends=('git')
source=("git+https://koldfront.dk/git/$pkgname")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname"
	git log --pretty=format:'%h' -n 1
}

package () {
	cd "$srcdir/$pkgname"
	install -Dm775 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
