pkgname=solarus
pkgver=1.2
pkgrel=1
pkgdesc="An open-source Zelda-like 2D game engine. Includes the game quest zsdx. Currently incompatible with zsxd."
arch=('i686' 'x86_64')
url="http://www.solarus-engine.org/"
license=('GPL/custom')
depends=('sdl' 'lua' 'sdl_image' 'sdl_ttf' 'physfs' 'openal' 'libvorbis' 'libmodplug')
makedepends=('cmake' 'zip')
conflicts=('zsdxdemo-en' 'zsdxdemo-de' 'zsdxdemo-fr' 'solarus-git' 'zsdx' 'zsxd')
replaces=('zsdxdemo-en' 'zsdxdemo-de' 'zsdxdemo-fr' 'solarus-git' 'zsdx')
provides=('solarus-engine' 'zsdx')
source=(http://www.zelda-solarus.com/downloads/zsdx/zsdx-1.2-src.tar.gz)
md5sums=('a08a14e07294c246409a109fe17f7430')

build() {
  cd "${srcdir}/zsdx-${pkgver}"
  cmake -D CMAKE_INSTALL_PREFIX="/usr" -D CMAKE_BUILD_TYPE=Release -D DEFAULT_QUEST=/usr/share/solarus/zsdx .
  make
}

package() {
  cd "${srcdir}/zsdx-${pkgver}"
  make DESTDIR="${pkgdir}/" PREFIX="/usr" install
}

