pkgname=solarus
pkgver=0.9.0
pkgrel=1
epoch=
pkgdesc="An open-source Zelda-like 2D game engine. Includes the game quest zsdx. Now compatible with zsxd."
arch=('i686' 'x86_64')
url="http://www.solarus-engine.org/"
license=('GPL/custom')
groups=()
depends=('lua' 'sdl_image' 'sdl_ttf' 'physfs' 'openal' 'libvorbis' 'libmodplug')
makedepends=('cmake' 'zip')
checkdepends=()
optdepends=('zsxd')
provides=('solarus-engine' 'zsdx')
conflicts=('zsdxdemo-en' 'zsdxdemo-de' 'zsdxdemo-fr' 'solarus-git' 'zsdx')
replaces=('zsdxdemo-en' 'zsdxdemo-de' 'zsdxdemo-fr' 'solarus-git' 'zsdx')
backup=()
options=()
install=
changelog=
source=(http://www.zelda-solarus.com/downloads/$pkgname/$pkgname-$pkgver-src.tar.gz
http://www.zelda-solarus.com/downloads/zsdx/zsdx-1.3.tar.gz)
noextract=()
md5sums=('15ede4fb31c0dcf2fb45dccfbc822593'
         '07deeeb684b7c8a653dbfaf56c38c03c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cmake -D CMAKE_INSTALL_PREFIX="/usr" -D CMAKE_BUILD_TYPE=Release -D DEFAULT_QUEST=/usr/share/solarus/zsdx .
  make
  cd "${srcdir}/zsdx-1.3"
  cmake -D CMAKE_INSTALL_PREFIX="/usr" -D CMAKE_BUILD_TYPE=Release .
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" PREFIX="/usr" install
  cd "${srcdir}/zsdx-1.3"
  make DESTDIR="${pkgdir}/" PREFIX="/usr" install
}

