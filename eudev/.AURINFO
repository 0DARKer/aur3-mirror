pkgbase = eudev
	pkgver = 1.9
	pkgrel = 1
	url = http://dev.gentoo.org/~blueness/eudev
	arch = i686
	arch = x86_64
	license = GPL
	makedepends = acl
	makedepends = dbus
	makedepends = hwids
	makedepends = kbd
	makedepends = kmod
	makedepends = pam
	makedepends = util-linux
	makedepends = gobject-introspection
	makedepends = gperf
	makedepends = gtk-doc
	makedepends = intltool
	source = http://dev.gentoo.org/~blueness/eudev/eudev-1.9.tar.gz
	source = initcpio_hooks
	source = initcpio_install
	source = http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/sys-fs/eudev/files/udev-postmount
	options = !makeflags
	options = !libtool

pkgname = eudev
	pkgdesc = The userspace dev tools (udev) forked by Gentoo
	depends = glib2
	depends = kbd
	depends = kmod
	depends = hwids
	depends = libeudev>=1.9
	depends = pam
	depends = util-linux
	optdepends = eudev-systemdcompat: makes packages compiled with systemd features run
	optdepends = upower-pm-utils: pm-utils support
	provides = udev=215
	backup = etc/udev/udev.conf

pkgname = libeudev
	pkgdesc = eudev client libraries
	depends = glibc
	depends = glib2
	provides = libudev=215
	provides = libgudev-1.0.so
	provides = libudev.so

pkgname = eudev-openrc
	pkgdesc = OpenRC eudev postmount script
	pkgver = 20140719
	pkgrel = 1
	install = eudev.install
	arch = any
	groups = eudev-base
	depends = openrc-core
	depends = eudev
	conflicts = openrc
	conflicts = openrc-git
	conflicts = openrc-arch-services-git
	conflicts = initscripts
	conflicts = systemd-sysvcompat

