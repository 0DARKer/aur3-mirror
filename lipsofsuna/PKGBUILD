# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=lipsofsuna
pkgver=0.4.0
pkgrel=1
pkgdesc="A tongue-in-cheek dungeon crawl game that takes place in the chaotic dungeons of Suna."
arch=(i686 x86_64)
url="http://lipsofsuna.org/"
license=('LGPL')
makedepends=('python')
depends=('bullet>=2.77' 'enet>=1.2.0' 'lua>=5.1' 'sqlite3>=3.6' 'sdl_ttf>=2.0' 'glew>=1.5.5' 'openal' 'libvorbis' 'flac>=1.2.0' 'curl>=7.19')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('729f01593b712a4debe25700067d4cae')
sha256sums=('1fa26da8727559d3c9557935578c3f363c6259aa9d5636e8b103894d80344ecd')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr --relpath=false --optimize=true
  ./waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf install --destdir=${pkgdir}
}
