# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=lipsofsuna
pkgver=0.3.0
pkgrel=1
pkgdesc="A tongue-in-cheek dungeon crawl game that takes place in the chaotic dungeons of Suna."
arch=(i686 x86_64)
url="http://lipsofsuna.org/"
license=('LGPL')
makedepends=('python')
depends=('gcc-libs' 'bullet>=2.77' 'enet>=1.2.2' 'lua>=5.1' 'sqlite3>=3.6' 'sdl_ttf>=2.0' 'glew>=1.5.5' 'openal' 'libvorbis' 'flac')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('b196f30f7f01f9eba74d0504bf8d4a1d')
sha256sums=('d8b0f0eeebad09a9201c12d4dff098a443694c70059c96551ce93ee59130c70c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr --relpath=false --optimize=true
  ./waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf install --destdir=${pkgdir}
}
