# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=lipsofsuna
pkgver=0.5.0
pkgrel=1
pkgdesc="A tongue-in-cheek dungeon crawl game that takes place in the chaotic dungeons of Suna."
arch=(i686 x86_64)
url="http://lipsofsuna.org/"
license=('LGPL')
makedepends=('python')
depends=('bullet>=2.77' 'enet>=1.2.2' 'lua>=5.1' 'sqlite3>=3.6' 'sdl_ttf>=2.0' 'glew>=1.5.5' 'openal' 'libvorbis' 'flac>=1.2.0' 'curl>=7.19')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('eb85d36cdb9735a0e0aa584f45fd6f56')
sha256sums=('9d6949576edb93881c523dfe3a8fed96fed7a607cc29a95f60fd377c899e4fdf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr --relpath=false --optimize=true
  ./waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf install --destdir=${pkgdir}
}
