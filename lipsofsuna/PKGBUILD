# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=lipsofsuna
pkgver=0.2.1
pkgrel=1
pkgdesc="A tongue-in-cheek dungeon crawl game that takes place in the chaotic dungeons of Suna."
arch=(i686 x86_64)
url="http://lipsofsuna.org/"
license=('LGPL')
makedepends=('python')
depends=('gcc-libs' 'bullet>=2.71' 'enet-old>=1.2.2' 'lua>=5.1' 'sqlite3>=3.6' 'sdl_ttf>=2.0' 'glew>=1.5.5' 'openal' 'libvorbis' 'flac')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('57a95119e2e796e398049ee09c85bea3')
sha256sums=('7b0c7d572213c62f937298de23994896daae9d98c47266d7e5bf8f05a3c5cacd')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr --relpath=false --optimize=true
  ./waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf install --destdir=${pkgdir}
}
