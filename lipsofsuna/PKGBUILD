# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=lipsofsuna
pkgver=0.2.0
pkgrel=1
pkgdesc="A tongue-in-cheek dungeon crawl game that takes place in the chaotic dungeons of Suna."
arch=(i686 x86_64)
url="http://lipsofsuna.org/"
license=('LGPL')
makedepends=('python')
depends=('gcc-libs' 'bullet>=2.71' 'enet>=1.2.2' 'lua>=5.1' 'sqlite3>=3.6' 'sdl_ttf>=2.0' 'glew>=1.5.5' 'openal' 'libvorbis' 'flac')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz ${pkgname}.desktop)
md5sums=('c702db6453920e9206c0ce5d7733fa3e' '1a92b56aadd398d99d742e204d977399')
sha256sums=('1a1b9fd98dbb06c6f3171873fd7e89a99cfe903a5e2a5e0d14f9aabc8c078ca9' '12e4846f2b16524f43781b5a39295d20a0c3ef7e04a77a8c2e4622858a2e9b2e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf configure --prefix=/usr --relpath=false --optimize=true
  ./waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./waf install --destdir=${pkgdir}
  install -Dm644 ${srcdir}/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
}
