# Maintainer: Gustavo Alvarez <s1lpkn07@gmail.com>

pkgname=mpv-build-git
pkgver=20130506.c653697
pkgrel=1
pkgdesc="Video player based on MPlayer/mplayer2 (uses statically linked ffmpeg). (GIT version)"
arch=('i686' 'x86_64')
depends=('desktop-file-utils' 'enca' 'fribidi' 'jack' 'lcms2' 'libbluray' 'libcaca' 'libcdio-paranoia' 'libgl' 'libmng' 'libdvdread' 'libpulse' 'libva' 'x264' 'lame'
         'libquvi' 'libvdpau' 'libxinerama' 'libxkbcommon' 'libxss' 'libxv' 'libxxf86vm' 'lirc-utils' 'mpg123' 'portaudio' 'rsound' 'sdl2-hg' 'smbclient' 'libvpx')
license=('GPL')
url="http://mpv.io/"
makedepends=('clang' 'git' 'live-media' 'mesa' 'python-docutils' 'sdl' 'vstream-client' 'yasm')
conflicts=('mpv')
replaces=('mpv')
options=('!emptydirs')
install="${pkgname}.install"
source=('git://github.com/mpv-player/mpv-build.git'
        'git://github.com/mpv-player/mpv.git'
        'git://source.ffmpeg.org/ffmpeg.git'
        'git+https://code.google.com/p/libass'
        'mpv.desktop')
md5sums=('SKIP'
         'SKIP'
         'SKIP'
         'SKIP'
         '0ff83929010f5a71bda77772141ab347')
_gitname="mpv-build"

pkgver() {
  cd "${srcdir}/mpv"
  echo "$(git log -1 --format="%cd" --date=short | tr -d '-').$(git log -1 --format="%h")"
}

prepare() {
  cd "${_gitname}"
  rm -fr mpv ffmpeg libass ffmpeg_build build_libs
  mv ../{mpv,ffmpeg,libass} .

  # Make mpv/ffmpeg build flags
  sed 's|OPTIONS="|OPTIONS="--disable-doc --cc=clang --disable-programs  --enable-libx264 --enable-libvpx --enable-libmp3lame |g' -i scripts/ffmpeg-config
  sed 's|OPTIONS="|OPTIONS="--prefix=/usr --confdir=/etc/mpv --extra-cflags=-I/usr/include/samba-4.0|g' -i scripts/mpv-config
}

build() {
  cd "${_gitname}"
  export CC="clang"
  make
}

package() {
  cd "${_gitname}/mpv"
  make DESTDIR="${pkgdir}" install-strip
  install -Dm755 TOOLS/mpv_identify.sh "${pkgdir}/usr/bin/mpv_identify"

  install -Dm644 etc/input.conf "${pkgdir}/etc/mpv/input.conf"
  install -Dm644 etc/example.conf "${pkgdir}/etc/mpv/mpv-example.conf"
  install -Dm644 etc/encoding-example-profiles.conf "${pkgdir}/etc/mpv/encoding-example-profiles.conf"

  sed -e 's|/usr/local/etc/mpv.conf|/etc/mpv.conf|' \
      -e 's|/path/to/the/file/you/want/to/include|/etc/mpv/encoding-profiles.conf|' \
      -e 's|/path/to/this|/etc/mpv|' \
      -i "${pkgdir}/etc/mpv/"*.conf

  install -Dm644 DOCS/tech-overview.txt "${pkgdir}/usr/share/doc/mpv/tech-overview.txt"

  install -Dm644 "${srcdir}/mpv.desktop" "${pkgdir}/usr/share/applications/mpv.desktop"
  install -Dm644 etc/mpv-icon-source.svg "${pkgdir}/usr/share/pixmaps/mpv.svg"
}
