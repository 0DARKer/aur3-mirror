post_install() {
  xdg-icon-resource forceupdate --theme hicolor &> /dev/null
  update-desktop-database -q
}

pre_upgrade() {
  if [ -f /etc/mpv/input.conf ]; then
    cp /etc/mpv/input.conf /etc/mpv/input.conf.backup
    echo "==> Backuping /etc/mpv/input.conf"
  fi
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}
