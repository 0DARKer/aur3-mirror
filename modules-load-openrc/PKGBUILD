# Maintainer: Aaditya Bagga <aaditya_gnulinux@zoho.com>

pkgname=modules-load-openrc
pkgver=0.2
pkgrel=1
pkgdesc="module loading systemd compatibility script for openrc"
arch=('any')
license=('GPL')
groups=('openrc')
url="https://sourceforge.net/projects/mefiles/files/Manjaro/init.d"
depends=('openrc-systemdcompat>=0.4')
source=("https://sourceforge.net/projects/mefiles/files/Manjaro/init.d/modules_load-$pkgver")
md5sums=('78618074d8424a0cdf95c74b128f869f')
install=$pkgname.install

package () {
    install -Dm755 "${srcdir}/modules_load-${pkgver}" "${pkgdir}/etc/init.d/modules_load"
}
