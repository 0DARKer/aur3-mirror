pkgname=modules-load-openrc
pkgver=0.1
pkgrel=4
pkgdesc="module loading systemd compatibility script for openrc"
arch=('any')
license=('GPL')
groups=('openrc')
url="https://sourceforge.net/projects/mefiles/files/Manjaro/init.d"
depends=('openrc-systemdcompat>=0.4')
source=("https://sourceforge.net/projects/mefiles/files/Manjaro/init.d/modules_load")
md5sums=('59bf55b84175a2d7dc3200338148682d')
install=$pkgname.install

package () {
    install -Dm755 "${srcdir}/modules_load" "${pkgdir}/etc/init.d/modules_load"
}
