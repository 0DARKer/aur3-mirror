#contributor: tantalum <tantalum at online dot de>
pkgname=guile-fuse
pkgver=0.3
pkgrel=1
pkgdesc='guile bindings for fuse'
arch=(any)
license=(GPL3)
depends=(guile fuse)
url=http://sph-info.eu/textual/computer/programs/guile-fuse
source=(http://sph-info.eu/_media/textual/computer/programs/$pkgname-$pkgver.cpio.xz)
md5sums=(ac5850d8ba122a8e3a35792d95349c53)

build() {
 cat ${srcdir}/${pkgname}-${pkgver}.cpio.xz |xz -dcf |cpio --extract --no-absolute-filenames -d $*

 cd ${srcdir}/${pkgname}-${pkgver}

 make || return 1

 sh setup.sh "$pkgdir"/usr
}
