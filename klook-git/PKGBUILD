# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=klook-git
pkgver=20120409
pkgrel=1
pkgdesc='Allows users to look at the contents of a file, folder, listen audio file, to see video file without running any application to open it.'
arch=('i686' 'x86_64')
url="https://abf.rosalinux.ru/projects/64689"
license=('GPL')
depends=('kdelibs>=4.8.0')
makedepends=('cmake' 'automoc4')
provides=(klook)
conflicts=()
source=()
md5sums=()

_gitroot="https://abf.rosalinux.ru/uxteam/KLook.git"
_gitname="klook"

build(){
  cd ${srcdir}

  if [[ -d $_gitname ]]; then
	(cd $_gitname && git pull origin)
  else
	git clone $_gitroot $_gitname
  fi

  mkdir -p build
  cd build
  LDFLAGS="-lX11"
  cmake ../${_gitname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
    
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}