# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=klook-git
pkgver=20120525
pkgrel=1
pkgdesc='Allows users to look at the contents of a file, folder, listen audio file, to see video file without running any application to open it.'
arch=('i686' 'x86_64')
url="https://abf.rosalinux.ru/projects/64689"
license=('GPL')
depends=('kdelibs>=4.8.0')
makedepends=('cmake' 'automoc4')
provides=(klook)
conflicts=()
source=("CMakeLists.diff")
md5sums=('59c22a60ef35688f8fe621af8ad3d637')

_gitroot="http://anongit.kde.org/klook"
_gitname="klook"

build(){
  cd ${srcdir}

  if [[ -d $_gitname ]]; then
	(cd $_gitname && git pull origin)
  else
	git clone $_gitroot $_gitname
  fi
  cd klook
  patch -p0 < ${srcdir}/CMakeLists.diff
  cd ..
  mkdir -p build
  cd build
  LDFLAGS="-lX11"
  cmake ../${_gitname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
    
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}