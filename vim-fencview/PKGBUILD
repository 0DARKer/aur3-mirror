# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-fencview
pkgver=4.6
_scriptid=9649
pkgrel=2
pkgdesc="Autodetect multiple encodings"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=1708"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(fencview.vim::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('8debd1770d830a9227ce5bc27cd70269'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/fencview.vim ${pkgdir}/usr/share/vim/colors/fencview.vim || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
