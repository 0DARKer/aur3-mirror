pkgname=lib32-libaio
pkgname32=${pkgname/lib32-/}
pkgver=0.3.109
pkgrel=1
_pkgrel32=5
pkgdesc="The Linux-native asynchronous I/O facility (aio) library"
arch=('x86_64')
url="http://ftp.debian.org/debian/pool/main/liba/libaio"
groups=lib32
license=('LGPL')
source=(ftp://ftp.archlinux.org/community/os/i686/libaio-${pkgver}-${_pkgrel32}-i686.pkg.tar.xz)

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib/
}
md5sums=('6377aeab067ebd4e2686adb4500d98fe')
