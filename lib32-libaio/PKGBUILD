pkgname=lib32-libaio
pkgname32=${pkgname/lib32-/}
pkgver=0.3.107
pkgrel=1
_pkgrel32=1
pkgdesc="The Linux-native asynchronous I/O facility (aio) library"
arch=('x86_64')
depends=()
makedepends=()
url="http://ftp.debian.org/debian/pool/main/liba/libaio"
groups=lib32
license=('LGPL')
source=(libaio-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('e6877cc89c75acd5f148830f79c4c123')

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/lib/
  cp -R $startdir/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib/
}
