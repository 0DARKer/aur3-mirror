# Maintainer: M4rQu1Nh0S <zonadomarquinhos@gmail.com>
pkgname=winkawaks
pkgver=1.60
_fullname=winkawaks160
pkgrel=2
pkgdesc="A free windows port version of the kawaks game Emulator, supports NeoGeo, CPS1 and CPS2 ROM BIOS Games"
arch=('any')
url="http://www.winkawaks.org/"
license=('freeware')
groups=('emulators')
depends=('wine>=1.5.0')
install=$pkgname.install
source=('http://gamehall.uol.com.br/kofbrteam/arquivos/www.kofbrteam.com.br_winkawaks160.zip' 'winkawaks.desktop' 'winkawaks.ico' 'winkawaks' 'mfc42.dll')
md5sums=('c90f8a7b0789fb2dfa2804be239fc3eb'
         '777ad09639631f8ffb81ff2d3d5f0650'
         '7121582a3753becfed06483e612268c1'
         '97a4b7f876181ee5d0f74b96af363c58'
         'f5eb87f5223e30dcf89816ce655be74c')


package() {
 install -D $startdir/mfc42.dll $pkgdir/usr/share/$_fullname/mfc42.dll
 install -D $startdir/$pkgname $pkgdir/usr/bin/$pkgname
 install -D $startdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
 install -D $startdir/$pkgname.ico $pkgdir/usr/share/icons/$pkgname.ico

cd $srcdir/$_fullname/
mv * $pkgdir/usr/share/$_fullname
}

