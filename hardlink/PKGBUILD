# Maintainer: Yonathan Dossow  <ydossow@archlinux.cl>
pkgname=hardlink
pkgver=1.0
_rpmrel=10.el6
pkgrel=1
pkgdesc="hardlink is used to create a tree of hard links.
It's used by kernel installation to dramatically reduce the
amount of diskspace used by each kernel package installed."
arch=('i686' 'x86_64' )
url="http://cvs.fedora.redhat.com/viewcvs/devel/hardlink"
license=('GPLv2+')
depends=()
makedepends=('gcc' 'rpmextract')
options=()
install=
changelog=
source=(ftp://ftp.redhat.com/pub/redhat/linux/enterprise/6Server/en/os/SRPMS/${pkgname}-${pkgver}-$_rpmrel.src.rpm)
noextract=()
md5sums=('c241e0bf08783a9bc57e50251787e255')

build() {
  cd $srcdir
  rpmextract.sh ${pkgname}-${pkgver}-$_rpmrel.src.rpm

  gcc hardlink.c -o hardlink
}

package() {
  cd "$srcdir"
  install -D -m 644 hardlink.1 $pkgdir/usr/share/man/man1/hardlink.1
  install -D -m 755 hardlink $pkgdir/usr/sbin/hardlink
}

# vim:set ts=2 sw=2 et:
md5sums=('b6baa02212170cb24c43bc4b48ced198'
         'b17230339f8a4af452d5363b784a0819')
md5sums=('8b6324cd4210793607f241cebf10f6a3')
