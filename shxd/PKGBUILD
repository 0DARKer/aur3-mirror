pkgname=shxd
pkgver=0.4.12
pkgrel=1
pkgdesc="A fork of the Hotline X Daemon (HXD)"
arch=(i686 x86_64)
url="http://synhxd.sourceforge.net"
license=("GPL v2")
depends=(glibc)
source=("http://synhxd.sourceforge.net/releases/shxd-$pkgver.tgz"
"shxd.sh")
md5sums=('b244bd58f840eb70509d7f243d8a0c53'
         '1796ccd9e00cb53b448fdd79be1ff3a4')

build() {
  cd "${srcdir}/shxd-$pkgver"
  ./configure \
    --prefix=$pkgdir/opt/shxd # makefile ignores DESTDIR
  make
}

package()
{
  cd "${srcdir}/shxd-$pkgver"
  mkdir -p "$pkgdir/opt/shxd" # ... again with the makefile...
  make install
  mkdir -p "$pkgdir/usr/bin"
  ln -s "/opt/shxd/hxd" "$pkgdir/usr/bin/shxd"
  install -Dm755 "$srcdir/shxd.sh" "$pkgdir/etc/rc.d/shxd"
}