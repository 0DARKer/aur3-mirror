pkgname=fortune-mod-discworld-pl
pkgver=2.0_2002.09.12
pkgrel=1
pkgdesc="A collection --- fortune cookies --- of quotes from the "Discworld" novels by Terry Pratchett. Polish translation."
makedepends=('rpmextract')
depends=('fortune-mod')
groups=('fortune-mods')
source=(ftp://rpmfind.net/linux/PLD/dists/ra/PLD/i386/PLD/RPMS/fortune-mod-pl-pratchett-${pkgver}-${pkgrel}.noarch.rpm)
md5sums=('db9d2c33778dca01dbcdbcd09964380f')
arch=('i686')
url="http://www.splitbrain.org/index.php?x=.%2FFortunes%2Fdiscworld"

build() {

	rpmextract.sh fortune-mod-pl-pratchett-${pkgver}-${pkgrel}.noarch.rpm
	cd $startdir/src/

	install -D -m644 $startdir/src/usr/share/games/fortunes/pratchett $startdir/pkg/usr/share/fortune/pratchett
	install -D -m644 $startdir/src/usr/share/games/fortunes/pratchett.dat $startdir/pkg/usr/share/fortune/pratchett.dat

}
