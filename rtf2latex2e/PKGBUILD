# Maintainer: Kevin Klement = klement at philos dot umass dot edu
pkgname=rtf2latex2e
pkgver=2.0.1
dashedver=${pkgver//./-}
dashedmainver=${dashedver#-*}
pkgrel=1
pkgdesc="Tool to convert rich text format (RTF) documents to LaTeX 2e format."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/rtf2latex2e/"
license=('GPL')
makedepends=('unzip')
optdepends=('texlive-core: To make use of LaTeX output files')
source=(http://sourceforge.net/projects/$pkgname/files/$pkgname-$dashedver.zip)
noextract=($pkgname-$dashedver.zip)
md5sums=('b98f0199ab6e1d0f51b6f52262f22361')

build() {
  cd "$srcdir"
  unzip $pkgname-$dashedver.zip
  cd "$pkgname-$dashedver"
  sed -i -e "s|^PREFIX?=.*|PREFIX?=$pkgdir/usr/share/$pkgname|" Makefile
  make
  make test
  make install
}

package() {
  mkdir -p $pkgdir/usr/bin
  cat >> $pkgdir/usr/bin/$pkgname << EOF
#!/bin/bash
/usr/share/$pkgname/bin/$pkgname -P /usr/share/$pkgname/share/$pkgname \$@
EOF
  chmod a+x $pkgdir/usr/bin/$pkgname
}

# vim:set ts=2 sw=2 et:
