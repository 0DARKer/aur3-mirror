# Maintainer: Limao Luo <luolimao@gmail.com>

pkgname=blaba
pkgver=1.0b2
pkgrel=1
pkgdesc="BLABA (Bryan Lunduke's Awesome Blocks of Awesome): A graphical video game editor"
url="http://lunduke.com/?page_id=3152"
arch=('i686' 'x86_64')
license=('freeware')
depends=('gtk2' 'desktop-file-utils')

provides=('blaba')
if test "$CARCH" == x86_64; then
    depends+=('lib32-gtk2')
    optdepends+=(
	'lib32-libcanberra: To get rid of an annoying error'
	'lib32-gtk-engines: Needed to get a decent look & feel')
fi

install="blaba.install"
source=('http://www.lunduke.com/blaba/blaba-linux-beta-2.tar.gz')
sha256sums=('8b5b9c3fa959ef7a6858d5a3d7d13af0270451a4d3a927794a641a0a88360611')
sha512sums=('dbe1af1cbc7a005ec995d882db790b03258283e1bb23074abeb8ca7f0362f7696ac50e18c4cc12737b5a7f28e0442e4a503cf6c731ee62f5e4359b81a69971f6')

build() {
    tar xzf blaba-linux-beta-2.tar.gz
    mkdir -p $srcdir/opt
    mv $srcdir/blaba $srcdir/opt/blaba
    mv $srcdir/opt $pkgdir/.
}

package() {
    install -dD $pkgdir/opt/* /opt/.
}
