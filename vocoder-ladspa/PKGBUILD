pkgname=vocoder-ladspa
pkgver=0.4
pkgrel=3
pkgdesc="Vocoder (LADSPA)"
url="http://www.sirlab.de/linux/download_vocoder.html"
license="GPL"
arch=('i686' 'x86_64')
depends=(ladspa)
source=(http://www.gjcp.net/~gordonjcp/vocoder.tar.bz2)
md5sums=('772551a3c57aefcf166f4270c8c0e936')

build() {
  cd $srcdir/vocoder

  make || return 1

  install -m755 -D vocoder.so $startdir/pkg/usr/lib/ladspa/vocoder.so || return 1
}
