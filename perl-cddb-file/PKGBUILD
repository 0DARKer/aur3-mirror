pkgname=perl-cddb-file
pkgver=1.05
pkgrel=5
pkgdesc="Parse a CDDB/freedb data file"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~TMTM/CDDB-File"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/T/TM/TMTM/CDDB-File-$pkgver.tar.gz) 
md5sums=('c619e60e86a2bb227d434066c742b189')

build() {
  cd  $startdir/src/CDDB-File-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
