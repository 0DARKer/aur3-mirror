# Maintainer: Alexander De Sousa <archaur.xandy21@spamgourmet.com>

pkgname=client175
pkgver=0.5a
pkgrel=1
pkgdesc="Full featured MPD web client."
arch=('any')
url="http://code.google.com/p/client175/"
license=('GPL3')
groups=()
depends=('mpd>=0.14' 'python2')
provides=('client175')
conflicts=('client175-svn')
backup=('opt/client175/site.conf')
install=client175.install
source=(http://client175.googlecode.com/files/client175_$pkgver.tar.gz)
sha1sums=('114afdb0ee3a18393df6059be52e2df6b3e198d6')

build() {
	sed 's|python|python2|g' -i "$srcdir/client175/server.py"
}

package() {
	msg2 "Installing files..."
	mkdir -p "$pkgdir/opt"
	cp -r "$srcdir/client175" "$pkgdir/opt"

	msg2 "Allowing direct execution..."
	chmod +x "$pkgdir/opt/client175/server.py"
}

