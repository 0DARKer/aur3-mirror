pkgname=pygist
pkgver=1.1
pkgrel=1
pkgdesc="Python command line interface with gist.github.com"
url="http://github.com/mattikus/pygist/tree/v1.1"
arch=(any)
license=('MIT')
depends=('python')
optdepends=('xclip')
conflicts=('pygist-git')
replaces=('pygist')
install=('pygist.install')
backup=()
source=("http://github.com/mattikus/pygist/raw/v1.1/pygist.py")
md5sums=('3d8a824664136723cf80940e17634eba')
sha1sums=('781febe5c1670e8737f9c5dfd7546da51a2be244')
sha256sums=('fd4cd7cfaada08ec49c28e24c2d63e3e21b46ed37e7e3ad2a6b111b076005555')

build() {
  cd ${srcdir}
  chmod +x pygist.py
  mkdir -p ${pkgdir}/usr/bin/
  cp pygist.py ${pkgdir}/usr/bin/pygist
} 

