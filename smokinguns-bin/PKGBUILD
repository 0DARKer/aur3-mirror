# Maintainer: Emrah Nizam <emrahnzm@gmail.com>

pkgname=smokinguns-bin
pkgver=1.1b4
pkgrel=3
pkgdesc='A semi-realistic simulation of the "old west" great atmosphere built on id Tech 3.'
arch=('i686' 'x86_64')
url='http://smokin-guns.net'
license=('GPL2' 'custom')
depends=('openal')
replaces=('westernquake3')
options=('!strip')
source=("http://garr.dl.sourceforge.net/project/smokinguns/Smokin_%20Guns/1.1/SmokinGuns-$pkgver-engine-only-update.zip"
	"http://www.quake3.fr/fichier/stuff/quake3/mods/Smokin_Guns_1.0.zip"               
	"smokinguns.sh"
	"smokinguns_server.sh"
	"SmokinGuns.desktop")
md5sums=('05bd28b31bc353c8d2aa1d84842387f5'
	 '6e6a980bd057e9241c66b7324729c7b9'         	
	 '56c3d065f63378f76faf6f6d0d122c3d'
	 '456acbc4e0841b1b1e4ab87d2efc112d'
	 '0efe962af8da4d3cbf2dea1f7d95779e')
package() {
  cd "$srcdir/Smokin' Guns"
  install -d "$pkgdir/opt/SmokinGuns/baseq3"
  install -m 644 baseq3/* "$pkgdir/opt/SmokinGuns/baseq3"
  install -d "$pkgdir/opt/SmokinGuns/smokinguns"
  install -m 644 smokinguns/* "$pkgdir/opt/SmokinGuns/smokinguns"  
  install -Dm 755 "$startdir/smokinguns.sh" "$pkgdir/usr/bin/smokinguns"
  install -Dm 755 "$startdir/smokinguns_server.sh" "$pkgdir/usr/bin/smokinguns_server"
  install -Dm 775 "$startdir/SmokinGuns.desktop" "$pkgdir/usr/share/applications/Smokin' Guns.desktop"
  cd "$srcdir"
  install -Dm 644 "LICENSE.txt" "$pkgdir/usr/share/licenses/smokinguns/LICENSE"
  install -Dm 644 "sg_48.png" "$pkgdir/usr/share/pixmaps/smokinguns.png"
  [ "$CARCH" = "i686" ] && install -m 775 "smokinguns.i386" "$pkgdir/opt/SmokinGuns/smokinguns.i686"
  [ "$CARCH" = "i686" ] && install -m 775 "smokinguns_dedicated.i386" "$pkgdir/opt/SmokinGuns/smokinguns_dedicated.i686"
  [ "$CARCH" = "x86_64" ] && install -m 775 "smokinguns.x86_r64" "$pkgdir/opt/SmokinGuns/smokinguns.x86_64"
  [ "$CARCH" = "x86_64" ] && install -m 775 "smokinguns_dedicated.x86_64" "$pkgdir/opt/SmokinGuns/smokinguns_dedicated.x86_64"
  install -m 644 smokinguns/* "$pkgdir/opt/SmokinGuns/baseq3"
}