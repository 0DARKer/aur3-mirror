## Maintainer: AudioLinux  <audiolinux AT fastmail DOT fm>

pkgname=audiolinux
_debpkgver=1.1.2
pkgver=$_debpkgver
pkgrel=8
pkgdesc="AudioLinux archlinux realtime configuration files, icons, scripts and shortcuts"
arch=('x86_64')
url="http://www.audio-linux.com"
license=('custom')
install=$pkgname.install
depends=()
optdepends=('hqplayer: The high-end upsampling multichannel software HD-audio player' 'hqplayer-embedded: Signalyst HQPlayer Embedded HQPlayer - the high-end upsampling multichannel software HD-audio player' 'hqplayer-network-audio-daemon: The high-end upsampling multichannel software HD-audio player' 'jriver-media-center: The Most Comprehensive Media Software' 'dff2dsf: Signalyst DFF to DSF command line conversion utility' 'deadbeef: A GTK+ audio player for GNU/Linux')
source=('http://www.tophifi.it/ftp/packages/Programmi.zip')
sha256sums=('4f8588ac7413764f28634b95b1649b4a5beede01a07c359d3346da51b6087e01')

package() {
  install -d "$pkgdir/opt/$pkgname"
  cd "$srcdir"
  bsdtar xf Programmi.zip -C "$pkgdir/opt/$pkgname"
}