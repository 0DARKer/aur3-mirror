# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=ksysguard-git
pkgver=r2788.8343b19
pkgrel=1
pkgdesc='KSysGuard'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kde/kde-workspace'
license=('LGPL')
depends=('knewstuff-git' 'libksysguard-git' 'lm_sensors')
makedepends=('extra-cmake-modules' 'git' 'kdoctools-git')
conflicts=('ksysguard' 'kde-workspace<0')
provides=('ksysguard')
source=('git://anongit.kde.org/ksysguard.git')
md5sums=('SKIP')

pkgver() {
  cd ksysguard
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../ksysguard \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
