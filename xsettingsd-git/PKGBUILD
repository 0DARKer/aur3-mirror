# Maintainer: megadriver <megadriver at gmx dot com>
# Based on xsettingsd, also in the AUR

pkgname=xsettingsd-git
_gitname=xsettingsd
pkgver=72
pkgrel=1
pkgdesc="A daemon that implements the XSETTINGS specification"
arch=('i686' 'x86_64')
url="http://code.google.com/p/xsettingsd/"
license=('custom:BSD')
depends=('libx11')
makedepends=('git' 'scons')
conflicts=('xsettingsd')
source=("git://github.com/derat/$_gitname.git")
md5sums=('SKIP')

pkgver() {
  cd "$_gitname"
  git rev-list --count HEAD
}

build() {
  cd "$_gitname"

  env CPPFLAGS="$CXXFLAGS" scons xsettingsd dump_xsettings
}

package() {

  cd "$_gitname"

  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/licenses/$_gitname
  install -d $pkgdir/usr/share/man/man1
  install -m 755 $_gitname $pkgdir/usr/bin/
  install -m 755 dump_xsettings $pkgdir/usr/bin/
  install -m 644 xsettingsd.1 $pkgdir/usr/share/man/man1/
  install -m 644 dump_xsettings.1 $pkgdir/usr/share/man/man1/
  install -m 644 COPYING $pkgdir/usr/share/licenses/$_gitname/
}
