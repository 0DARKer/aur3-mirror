# Contributor: Christian Hesse <mail@earthworm.de>
pkgname=qmk-tools
pkgver=1.2.1
pkgrel=1
pkgdesc="Mikrokopter Tools (like Kopter-Tool)"
arch=(x86_64)
url="http://mikrokopter.de/ucwiki/QMK-Tools"
license=('GPL')
groups=()
depends=(qwt)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://svn.mikrokopter.de/mikrowebsvn/filedetails.php?repname=Projects&path=%2FQMK-Groundstation%2FRelease%2FQMK-Tools-v$pkgver.tgz")
noextract=()
md5sums=(9e426869579eeeffc8e3e19593871d21)

build() {
  cd "$srcdir/QMK-Tools v$pkgver/"

  sh ./build-opensuse.sh
  mkdir -p $pkgdir/usr/bin/
  for FILE in Binary/*; do
    install -m 755 $FILE $pkgdir/usr/bin/
  done
}

