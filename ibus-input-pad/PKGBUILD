# Maintainer: majia321 < majia321@gmail.com >

pkgname=ibus-input-pad
pkgver=0.1.3
pkgrel=1
pkgdesc="The input pad is a tool to send a character on button to text applications, and ibus-input-pad is the IBus engine."
arch=('i686' 'x86_64')
url="http://http://code.google.com/p/input-pad/"
license=('LGPL')
depends=('gtk2' 'input-pad' 'ibus')
makedepends=('python2' 'glib2' 'intltool')
source=(http://input-pad.googlecode.com/files/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --enable-nls
  make || return 1
  make DESTDIR=${pkgdir} install
}

md5sums=('0ffa19857fd1c09969d439337a7d69a1')
