# Contributor: Berkus <berkus@madfire.net>

pkgname=khalkhi
pkgver=0.2.2_rc1
pkgrel=1
pkgdesc="Khalkhi is a plugin-based framework entries in the KDE Addressbook and services upon them."
arch=(i686)
url="http://www.kde-apps.org/content/show.php?content=54450"
license=('GPL')
depends=('kdebase')
source=(http://kde-apps.org/CONTENT/content-files/54450-$pkgname-${pkgver/_/-}.tar.bz2)
md5sums=('bb99074e9a7a69621e4eea5727e093d9')

build() {
  . /etc/profile.d/qt.sh
  cd $startdir/src/$pkgname-${pkgver/_/-}
  ./configure --prefix=/opt/kde
  make || return 1
  make DESTDIR=$startdir/pkg install
}
