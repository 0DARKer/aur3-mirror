# Contributor: Moritz Rudert <helios@cyb0rg.org>
pkgname=huawei-stat-e220
pkgver=0.1
pkgrel=1
pkgdesc="HUAWEI E220 statistics interface"
arch=('i686' 'x86_64')
url="http://oozie.fm.interia.pl/pro/huawei-e220/"
license=(GPL)
depends=('libusb')
source=(http://oozie.fm.interia.pl/src/he220stat.tar.bz2)

md5sums=('aa800f85183dc1990102846773fbefd9')

build() {
	cd $srcdir/he220stat*
	mkdir -p ${pkgdir}/usr/local/bin
	./configure
	sed -i -e "s|/usr/local/bin|${pkgdir}/usr/local/bin|g" Makefile
	make
	make install
}
