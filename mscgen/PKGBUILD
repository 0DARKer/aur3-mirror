# Contributor: Peter Simons <simons@cryp.to>
pkgname=mscgen
pkgver=0.18
pkgrel=1
pkgdesc="Message Sequence Chart Generator (mscgen)"
arch=('i686' 'x86_64')
url='http://www.mcternan.me.uk/mscgen/'
license=('GPL')
groups=()
depends=('gd' 'libpng' 'freetype2' 'zlib')
makedepends=('flex' 'bison')
provides=()
conflicts=()
replaces=()
backup=()
options=(!makeflags)
install=
source=( "http://www.mcternan.me.uk/mscgen/software/$pkgname-src-$pkgver.tar.gz" )
noextract=()
md5sums=('0922258a7fb86612bb623c1101260fd0')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr GDLIB_CFLAGS="$(gdlib-config --cflags)" GDLIB_LIBS="$(gdlib-config --libs)" || return 1
  make all || return 1
  make check || return 1
  make DESTDIR="$pkgdir/" install
}
