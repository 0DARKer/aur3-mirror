# Maintainer: Sander Boom <sander at inflowmotion dot nl>
# Contributor: realitygaps <realitygaps at yahoo dot com>

pkgname=sublime-text-dev
pkgver=2.2163
pkgrel=2
_build=2163
pkgdesc="sophisticated text editor for code, html and prose - dev build"
arch=('i686' 'x86_64')
url="http://www.sublimetext.com/dev"
license=('custom')
depends=(libpng12 gtk2)
conflicts=(sublime-text)
_arch=' x64'
_archurl='%20x64'

[[ "${CARCH}" = i686 ]] && _arch='' && _archurl=''

source=(
  "http://c758482.r82.cf2.rackcdn.com/Sublime%20Text%202%20Build%20${_build}${_archurl}.tar.bz2"
  sublime-text-dev.desktop
  sublime-text-dev-icon.png
  subl
)
md5sums=('c372fd8794b3fdce9be5b7d5fa19d4af'
         'a263a1c158d8a0cf00262f64e7953e41'
         'd08225e4b82a9de9a8fcbbf2b4aa6c23'
         '6e0b9c2332c1c1dc9e1e28fda391cf54')

[[ "${CARCH}" = i686 ]] && md5sums[0]='c87a898cc942536bc28132513e06b8c8'


build () {
  cd ${srcdir}

  install -Dm644 ${pkgname}.desktop \
    ${pkgdir}/usr/share/applications/${pkgname}.desktop
  install -Dm644 ${pkgname}-icon.png \
    ${pkgdir}/usr/share/pixmaps/${pkgname}-icon.png

  install -dm755 ${pkgdir}/opt
  cp -r "Sublime Text 2" ${pkgdir}/opt/${pkgname}

  install -Dm755 subl ${pkgdir}/usr/bin/subl
  #install -dm 755 ${pkgdir}/usr/bin
  #ln -s /opt/${pkgname}/sublime_text ${pkgdir}/usr/bin/${pkgname}
}
