# Contributor: Muhammad Qadri <Muhammad dot A dot Qadri at gmail dot com>

pkgname=julius
pkgver=4.2.1
pkgrel=1
pkgdesc="A high-performance large vocabulary continuous speech recognition (LVCSR) engine for 
speech-related research and development."
arch=('i686' 'x86_64')
url="http://julius.sourceforge.jp/en_index.php"
license=('custom')
source=('http://sourceforge.jp/frs/redir.php?m=iij&f=%2Fjulius%2F54278%2Fjulius-4.2.1.tar.gz')
sha1sums=('988f7720d543ad00175cedce394c2df021a649e9')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr/ install
  #make DESTDIR=${pkgdir} install

  install -D LICENSE.txt \
    ${pkgdir}/usr/share/licenses/julius/LICENSE.txt
}
