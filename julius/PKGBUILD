# Contributor: Muhammad Qadri <Muhammad dot A dot Qadri at gmail dot com>
pkgname=julius
pkgver=4.1.5
pkgrel=1
pkgdesc="A high-performance large vocabulary continuous speech recognition (LVCSR) engine for speech-related research and development."
arch=('i686')
url="http://julius.sourceforge.jp/en_index.php"
license=('custom')
provides=('julius')
source=('http://sourceforge.jp/frs/redir.php?m=jaist&f=%2Fjulius%2F47530%2Fjulius-4.1.5.tar.gz')
md5sums=('6c6bbddf58ff03add1797c1bb3f13615')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make prefix="$pkgdir/usr/" install

  install -D LICENSE.txt $pkgdir/usr/share/licenses/julius/LICENSE.txt
}

# vim:set ts=2 sw=2 et:
