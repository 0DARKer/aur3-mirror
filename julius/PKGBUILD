# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: Muhammad Qadri <Muhammad dot A dot Qadri at gmail dot com>

pkgname=julius
pkgver=4.2
pkgrel=1
pkgdesc="A high-performance large vocabulary continuous speech recognition (LVCSR) engine for speech-related research and development."
arch=('i686' 'x86_64')
url="http://julius.sourceforge.jp/en_index.php"
license=('custom')
source=('http://sourceforge.jp/frs/redir.php?m=jaist&f=%2Fjulius%2F51820%2Fjulius-4.2.tar.gz')
md5sums=('68ee85539103d182db3a684b3d70e820')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${pkgname}-${pkgver}

  make prefix=${pkgdir}/usr/ install
  #make DESTDIR=${pkgdir} install

  install -D LICENSE.txt \
    ${pkgdir}/usr/share/licenses/julius/LICENSE.txt
}
