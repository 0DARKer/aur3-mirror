# Maintainer: Sonny Piers <sonny.piers@gmail.com>
pkgname=rt5390
pkgver=2.4.0.4
pkgrel=1
pkgdesc="Kernel module for RT5390."
depends=('kernel26')
makedepends=('kernel26-headers')
arch=('x86_64' 'i686')
license=('GPL')
url=('http://www.ralinktech.com/support.php?s=2')
source=("http://www.ecole.ensicaen.fr/~bayart/dm1z/RT.tar.gz")
install='install.rt5390'
md5sums=('7f114fdc37cff9f644bfe477b8e1aad5')

build() {
  cd "${srcdir}/RT"
  make
}

package() {
	install -D -m 644 ${srcdir}/RT/RT5390STA.dat ${pkgdir}/etc/Wireless/RT5390STA/RT5390STA.dat
	install -D -m 755 ${srcdir}/RT/os/linux/rt5390sta.ko ${pkgdir}/lib/modules/$(uname -r)/kernel/drivers/net/wireless/rt5390sta.ko
}
