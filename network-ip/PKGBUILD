# Maintainer: allspark <allspark at cyb0rg dot org>

pkgname=network-ip
pkgver=0.2
pkgrel=2
pkgdesc="a replacement for the standard init network script. it uses ip instead of ifconfig/route"
arch=('any')
url="http://allspark.cyb0rg.org"
license=('GPL')
groups=()
depends=("iproute2")
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=$pkgname.install
source=("network-ip")
noextract=()
md5sums=('dc0cc6876030c7a23ca3559423d1b014')

build() {
	mkdir -p "$pkgdir"/etc/rc.d/
	install network-ip "$pkgdir"/etc/rc.d
}
