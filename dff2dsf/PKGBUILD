## Maintainer: AudioLinux  <audiolinux AT fastmail DOT fm>

pkgname=dff2dsf
_debpkgver=1.2.1
pkgver=$_debpkgver
pkgrel=2
pkgdesc="Signalyst DFF to DSF command line conversion utility"
arch=('x86_64')
url="http://www.signalyst.com/professional.html"
license=('custom')
depends=('glibc' 'gcc-libs')
source=('http://www.signalyst.com/binx/dff2dsf-121.zip')
sha256sums=('cb6cd79fdc6646e32a415b4d238e63612d336b726cd1ce82c2b83e4926e657ec')

package() {
 cd "$srcdir"
 bsdtar -xf dff2dsf-121.zip -C "$srcdir"
     install -Dm755 "$srcdir/linux-x64/dff2dsf" "$pkgdir/usr/bin/dff2dsf"
     install -Dm644 "$srcdir/license.txt" "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}