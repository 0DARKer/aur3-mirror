pkgname=hypercalc
pkgver=20130604
pkgrel=1
pkgdesc="A calculator designed to calculate extremely large numbers without overflowing."
arch=('any')
url="http://mrob.com/pub/perl/hypercalc.html"
license=('GPL') # GPL2 or any later version.
depends=('perl')
source=(http://mrob.com/pub/comp/$pkgname/$pkgname.txt)
md5sums=(19e1b6d13fe7a0a6318546bad748cd59)

build() {
  chmod +x $srcdir/$pkgname.txt
}

package() {
  mkdir -p $pkgdir/usr/bin
  cp $srcdir/$pkgname.txt $pkgdir/usr/bin/$pkgname
}
