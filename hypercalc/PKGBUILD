pkgname=hypercalc
pkgver=20140124
pkgrel=1
pkgdesc="A calculator designed to calculate extremely large numbers without overflowing."
arch=('any')
url="http://mrob.com/pub/perl/hypercalc.html"
license=('GPL')
depends=('perl')
source=(http://mrob.com/pub/comp/$pkgname/$pkgname.txt)
