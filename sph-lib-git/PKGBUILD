pkgname=sph-lib-git
_gitname=sph-lib
pkgver=470.456f909
pkgrel=1
pkgdesc='collection of guile scheme libraries'
arch=(any)
license=(GPL3)
makedepends=(git)
depends=(guile fuse)
conflicts=(guile-fuse)
source=("git://git.sph.io/sph-lib")
url="http://sph.io/content/187"
md5sums=(SKIP)

pkgver() {
  cd $_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $_gitname
  chmod 755 -R sph*
  t="${pkgdir}/usr/share/guile/site"
  mkdir -p "$t"
  cp -rt "$t" sph*
}