pkgname=btnx-config
pkgver=0.4.9
pkgrel=1
pkgdesc="Button Extension- a GNU/GPL mouse tool for GNU/Linux"
url=("http://ftp.de.debian.org/debian/pool/main/b/btnx-config/btnx-config_0.4.9.orig.tar.gz")
arch=(i686 x86_64)
license=('GPL')
groups=(gnome-extra)
depends=(libglade)
makedepends=(pkgconfig)
provides=()
conflicts=()
replaces=()
backup=()
options=('!libtool' '!emptydirs')
install=
source=(btnx-config_0.4.9.orig.tar.gz)
noextract=()
md5sums=('b07314c2562a81c7c82cc1561ca387d1')
 
build() {
cd $startdir/src/${pkgname}-${pkgver}
init_scripts_path=/etc/rc.d \
builddocs=no \
./configure --prefix=/usr --sysconfdir=/etc \
--localstatedir=/var
make || return 1
make DESTDIR=${startdir}/pkg DATAROOTDIR=${startdir}/pkg install
}
 

md5sums=('b07314c2562a81c7c82cc1561ca387d1')
