pkgname=hillman
pkgver=0.3.2
pkgrel=1
pkgdesc="Manual (via mouse clicking into tray) disk mounting manager for Linux"
arch=(any)
url="http://hillman.eltra.ru/"
license=('GPL')
depends=(perl gtk2-perl perl-gtk2-trayicon perl-locale-gettext inotify-tools sudo)
source=(http://hillman.eltra.ru/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make PREFIX=/usr || return 1
  make PREFIX=/usr DESTDIR="$pkgdir/" install

  # Clean up installation
  find "$pkgdir/" -name '*.swp' | xargs rm

  # Install additional files to doc/hillman
  install -m755 -d $pkgdir/usr/share/doc/$pkgname
  install -m644    AUTHORS COPYING README README.ru TODO \
                   $pkgdir/usr/share/doc/$pkgname/
}

md5sums=('b057ceb34472416979d08f11ace72fc8')
