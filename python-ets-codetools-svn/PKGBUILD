# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-codetools-svn
pkgver=25964
pkgrel=1
pkgdesc="Code Analysis and Execution Tools."
arch=('any')
url="http://code.enthought.com/projects/code_tools.php"
license=('BSD')
depends=('python2' 'python-numpy>=1.1' 'python-ets-traits-svn')
makedepends=('subversion' 'python2-distribute')
options=(!emptydirs)

_svnmod=CodeTools
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

