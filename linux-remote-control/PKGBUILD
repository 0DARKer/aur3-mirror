# Contributor: jfperini <@jfperini>

pkgname=linux-remote-control
pkgver=0.1
pkgrel=1
pkgdesc="Turn any device into a complete remote control for your GNU/Linux."
arch=('i686' 'x86_64')
url="http://www.linuxremotecontrol.com/"
license=('GPL v2')
install=linux-remote-control.install
depends=('nodejs' 'xdotool' 'xorg-xbacklight')

md5sums=('440bd3950a352281429de428d0cabad0') 
source=(http://www.linuxremotecontrol.com/lrc.deb)


package() {

    cd ${srcdir}/
    tar xvzf data.tar.gz -C .
    install -d -m 755 $pkgdir/opt/linux-remote-control
    cp -r $srcdir/opt/* $pkgdir/opt/linux-remote-control/
   
} 

    
    



