# Maintainer: nizox <nizzox@gmail.com>
pkgname=dhcpcd-dbus
pkgver=0.4.0
pkgrel=1
pkgdesc="DBus bindings for dhcpcd"
url="http://roy.marples.name/projects/dhcpcd-dbus"
license=("BSD")
depends=("dbus-core" "dhcpcd>=5.0")
source=(http://roy.marples.name/downloads/dhcpcd/$pkgname-$pkgver.tar.bz2)
arch=(i686 x86_64)

build() {
  cd $startdir/src/$pkgname-$pkgver
  export PREFIX="/usr"
  export BINDIR="/usr/lib/$pkgname"
  export SYSCONFDIR="/etc/dbus-1/system.d"

  #build
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  #install LICENSE
  install -d $pkgdir/usr/share/licenses/$pkgname || return 1
  awk '{if(FNR<27)print $0}' ${srcdir}/${pkgname}-${pkgver}/config.h \
	>> ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

md5sums=('50d282f889165207eec7ae42b038666b')
