pkgname=solarus-git
pkgver=20110801
pkgrel=1
pkgdesc="An open-source Zelda-like game engine"
arch=('i686' 'x86_64')
url="http://www.solarus-engine.org/"
license=('GPL3')
depends=('sdl' 'sdl_image' 'sdl_ttf' 'lua' 'physfs' 'openal' 'libsndfile')
makedepends=('git' 'cmake' )
provides=('solarus-engine' 'zsdx')
conflicts=()
source=()
md5sums=()

_gitroot="git://github.com/christopho/solarus.git"
_gitname="solarus"

build() {

  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  #msg "GIT checkout done or server timeout"
  #msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  ####

  cmake .
  make
}

package(){
   cd "$srcdir/$_gitname-build"
   make DESTDIR="$pkgdir" PREFIX=/usr  install
}
