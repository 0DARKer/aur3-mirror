pkgname=blobandconquer
pkgver=1.11
pkgrel=1
pkgdesc="Episode II of Blob Wars, a 3D action game featuring a variety of different weaponry and multiple objectives."
arch=('i686')
url="http://www.parallelrealities.co.uk/projects/blobAndConquer.php"
license="GPL"
options=('docs')
depends=('sdl_image' 'sdl_mixer' 'sdl_ttf' 'mesa')
source=("http://www.parallelrealities.co.uk/download/blobAndConquer/blobAndConquer-${pkgver}-1.tar.gz")
md5sums=('bf719a5663d7442f207f1009242c3c2c')

build() {
  cd $startdir/src/blobAndConquer-$pkgver
  make || return 1
  install -d $startdir/pkg/usr/share/{applications,icons}
  make DESTDIR=$startdir/pkg BINDIR=$startdir/pkg/usr/bin install
}
