#Maintainer issue <issue at archlinux dot info>

pkgname=racer-git
_pkgname=racer
pkgdesc="code completion for Rust"
url="https://github.com/phildawes/racer"
pkgrel=1
depends=('rust')
makedepends=('git')
arch=('x86_64')
license=('MIT')
md5sums=('SKIP')
pkgver='r158.05a80e8'
source=("$_pkgname::git+https://github.com/phildawes/racer.git")

pkgver() {
      cd "$_pkgname"
        printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
    }

build(){
    cd "$srcdir/$_pkgname"
    make 
}

package(){
    install -Dm755 "$srcdir/$_pkgname/bin/racer" "$pkgdir/usr/bin/racer"
    install -d "$pkgdir/usr/share/licenses/$_pkgname/"
    install -m 644 "$srcdir/$_pkgname/LICENSE-MIT" "$pkgdir/usr/share/licenses/$_pkgname/"
}
