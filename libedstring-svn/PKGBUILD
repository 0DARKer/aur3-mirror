pkgname=libedstring-svn
pkgver=29
pkgrel=2
pkgdesc="A library to handle strings which does not end with null character."
arch=('i686' 'x86_64')
url="http://code.google.com/p/libedstring/"
license=('LGPL')
depends=()
makedepends=('gcc' 'subversion' 'cmake')
options=()
conflicts=('libedstring')
provides=('libedstring')
source=()
md5sums=()

_svntrunk=https://libedstring.googlecode.com/svn/trunk/
_svnmod=libedstring

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd libedstring && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir libedstring-build
	cd libedstring-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/libedstring
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/libedstring-build

}
