# Maintainer: Weegee <weegee at devzero dot info>

pkgname=obs-git
pkgver=0.2.4.gc2eebd8
pkgrel=1
pkgdesc="Free, open source software for live streaming and recording"
arch=('i686' 'x86_64')
url="http://obsproject.com/"
license=('GPL2')
depends=('ffmpeg' 'jansson' 'libgl' 'libxinerama' 'libxkbcommon-x11' 'qt5-base' 'qt5-x11extras')
makedepends=('git' 'cmake')
optdepends=('libfdk-aac: Fraunhofer FDK AAC codec support')
options=()
source=('git+https://github.com/jp9000/obs-studio.git')
md5sums=('SKIP')

_gitname=obs-studio

pkgver() {
  cd "$_gitname"
  rev="$(git log -1 --pretty=format:%h )"
  echo "0.2.4.g$rev"
}

build() {
  cd "$_gitname"

  cmake ./ -DCMAKE_INSTALL_PREFIX='/usr'
}

package() {
  cd "$_gitname"
  make DESTDIR="$pkgdir" install
}

