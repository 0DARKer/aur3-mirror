pkgname=xine-lib-vdpau-hg
pkgver=11427
pkgrel=1
pkgdesc="A free video player library for Unix with support for vdpau"
arch=('i686' 'x86_64')
url="http://www.xine-project.org"
license=('GPL')
depends=('nvidia>=190.42' 'libvdpau' 'libgl' 'libxvmc' 'flac' 'libogg' 'libvorbis' 'sdl' 'libmng' 'libtheora'
         'libxcb' 'wavpack' 'ffmpeg' 'heimdal>=1.2.1' 'libtool' 'faad2' 'pkgconfig' 
	 'smbclient' 'mesa' 'alsa-lib' 'vcdimager')
makedepends=('mercurial')
conflicts=('xine-lib')
provides=('xine-lib')

_hgroot=http://hg.debian.org/hg/xine-lib/xine-lib-1.2/
_hgrepo=xine-lib

build() {

cd $srcdir

  	if [ -d ${_hgrepo} ]; then
		cd ${startdir}/src/${_hgrepo}
		hg pull -u
	else
		hg clone ${_hgroot}${_hgrepo} || return 1
		cd ${startdir}/src/${_hgrepo}
	fi

  msg "Mercurial clone done or server timeout"
  msg "Starting make..."

  cp -r $srcdir/$_hgrepo $srcdir/${_hgrepo}-build
  cd $srcdir/${_hgrepo}-build

  ./autogen.sh --prefix=/usr --with-w32-path=/usr/lib/codecs \
    --with-xv-path=/usr/lib --with-xxmc-path=/usr/lib --with-xvmc-path=/usr/lib \
    --with-libflac --with-wavpack --with-xcb \
    --without-jack --without-speex \
    --disable-gnomevfs --without-pulseaudio --disable-aalib \
    --disable-modplug || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  rm -rf $srcdir/${_hgrepo}-build

}
  

