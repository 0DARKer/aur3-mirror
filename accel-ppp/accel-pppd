#!/bin/bash

daemon_name=accel-pppd

. /etc/rc.conf
. /etc/rc.d/functions
. /etc/conf.d/$daemon_name

get_pid() {
	pidof -o %PPID $daemon_name
}

pre_start() {
if [ ! -d "/var/run/accel-ppp" ]; then
        mkdir /var/run/accel-ppp
fi
if [ ! -d "/var/log/accel-ppp" ]; then
        mkdir /var/log/accel-ppp
fi
}

case "$1" in
	start)
		stat_busy "Starting PPTP/PPPoE/L2TP $daemon_name daemon"
    pre_start

		PID=$(get_pid)
		if [[ -z $PID ]]; then
			[[ -f $PIDFILE ]] &&
				rm -f $PIDFILE
    
		# RUN
		$daemon_name -d -p $PIDFILE $ARGS
		#
    fi
		if [[ $? -gt 0 ]]; then
			stat_fail
			exit 1
		else
			echo $(get_pid) > $PIDFILE
			add_daemon $daemon_name
			stat_done
		fi
		;;

	stop)
		stat_busy "Stopping PPTP/PPPoE/L2TP $daemon_name daemon"
		PID=$(get_pid)
		# KILL
		[[ -n $PID ]] && kill $PID &> /dev/null
		#
		if [[ $? -gt 0 ]]; then
			stat_fail
			exit 1
		else
			rm -f $PIDFILE &> /dev/null
			rm_daemon $daemon_name
			stat_done
		fi
		;;

	restart)
		$0 stop
		sleep 4
		$0 start
		;;

	status)
		stat_busy "Checking $daemon_name status";
		ck_status $daemon_name
		;;

	reload)
		stat_busy "Reloading $daemon_name daemon settings"

		PID=$(get_pid)
		# RUN
		/bin/kill -SIGUSR1 $PID
		#
		if [[ $? -gt 0 ]]; then
			stat_fail
			exit 1
		else
			stat_done
		fi
		;;
	*)
		echo "usage: $0 {start|stop|restart|status|reload}"
esac

exit 0

# vim:set ts=2 sw=2 et:
