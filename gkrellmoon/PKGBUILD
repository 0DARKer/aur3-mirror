pkgname=gkrellmoon
pkgver=0.6
pkgrel=1
pkgdesc="Moon clock plugin for gkrellm2"
url="http://gkrellmoon.sourceforge.net/"
license=('GPL')
arch=('i686' 'x86_64')
depends=('gkrellm' 'gtk2')
makedepends=('pkgconfig')
source=(http://dl.sourceforge.net/sourceforge/gkrellmoon/$pkgname-$pkgver.tar.gz)
md5sums=('0e30da51526d68cbce146ea2bdd9b685')

build() {
  cd $startdir/src/$pkgname-$pkgver
#  sed -i 's|`pkg-config gtk+-2.0 --cflags`|-I/usr/include/gtk-2.0 -I/usr/lib/gtk-2.0/include -I/usr/include/atk-1.0 -I/usr/include/cairo -I/usr/include/pango-1.0 -I/usr/include/glib-2.0 -I/usr/lib/glib-2.0/include|' Makefile
#  sed -i 's|`pkg-config gtk+-2.0 --libs`|-lgtk-x11-2.0 -lgdk-x11-2.0 -latk-1.0 -lgdk_pixbuf-2.0 -lm -lpangocairo-1.0 -lfontconfig -lXinerama -lXi -lXrandr -lXext -lXcursor -lXfixes -lpango-1.0 -lcairo -lXrender -lX11 -lgobject-2.0 -lgmodule-2.0 -ldl -lglib-2.0|' Makefile
# sed -i '/pkg-config/d' Makefile
  make || return 1
  /bin/install -D -m755 gkrellmoon.so \
  	$startdir/pkg/usr/lib/gkrellm2/plugins/gkrellmoon.so
}
