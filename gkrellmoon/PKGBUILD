# Contributor: Francois Charette <firmicus@gmx.net>
# Contributor: Tino Reichardt <milky-archlinux@mcmilk.de>
pkgname=gkrellmoon
pkgver=0.6
pkgrel=1
pkgdesc="Moon clock plugin for gkrellm2"
url="http://gkrellmoon.sourceforge.net/"
license=('GPL')
arch=('i686' 'x86_64')
depends=('gkrellm' 'gtk2')
makedepends=('pkgconfig')
source=(http://ftp.eu.openbsd.org/pub/OpenBSD/distfiles/$pkgname-$pkgver.tar.gz)
md5sums=('0e30da51526d68cbce146ea2bdd9b685')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  /bin/install -D -m755 gkrellmoon.so \
  	$startdir/pkg/usr/lib/gkrellm2/plugins/gkrellmoon.so
}
