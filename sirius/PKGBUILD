# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=sirius
pkgver=0.8.0
pkgrel=1
pkgdesc="A program for playing the game of othello/reversi."
arch=('i686' 'x86_64')
url="http://www2.cddc.vt.edu/linux/distributions/aurora/extras/2.0/repodata/repoview/sirius-0-0.8.0-3.html"
license=('GPL2')
depends=('libgnomeui')
source=(http://www.sourcefiles.org/Games/Board/Othello/sirius-0.8.0.tar.gz)
md5sums=('e01d079ca62aa3cc85f542bb5e9389a5')

prepare() {
  cd $srcdir/$pkgname-$pkgver  
  ./configure --prefix=/usr LIBS="-lpthread -lm"
   
   # Fix desktop file entry
   sed -i 's|Game;|Game;BoardGame|;s|Comment=Sirius, a o|GenericName=O|' sirius.desktop
}

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
