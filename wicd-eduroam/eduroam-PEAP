name= eduroam-PEAP
author= Oliver Wiedemann
version = 1
require username *Username password *Password cert *Cert
protected password *Password
-----
ctrl_interface=/var/run/wpa_supplicant
network={
        ssid=$_ESSID
        scan_ssid=$_SCAN
        key_mgmt=WPA-EAP
	proto=WPA WPA2 RSN
        eap=PEAP
        phase2="auth=MSCHAPV2"
        identity="$_USERNAME"
        password="$_PASSWORD"
	ca_cert="$_CERT"
}

