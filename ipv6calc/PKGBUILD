pkgname=ipv6calc
pkgver=0.95.0
pkgrel=4
pkgdesc='Small utility to manipulate, convert and calculate (more than) IPv6 addresses'
url='http://www.deepspace6.net/projects/ipv6calc.html'
license=('GPL2')
source=("ftp://ftp.bieringer.de/pub/linux/IPv6/ipv6calc/ipv6calc-${pkgver}.tar.gz")
md5sums=('7a3053afc88b08d95432d7500d73eeaf')
arch=('i686' 'x86_64')
checkdepends=('perl-digest-sha1' 'perl-uri')

prepare() {
  cd "${pkgname}-${pkgver}"

  # Run autotools.
  autoconf
}

build() {
  cd "${pkgname}-${pkgver}"

  # Configure the build.
  ./configure \
    --prefix="${pkgdir}/usr"

  sed -i -e "s#\${prefix}#$pkgdir/usr#g" man/Makefile

  # Build it!
  make
}

check() {
  cd "${pkgname}-${pkgver}"

  # Run the test suite.
  make test
}

package() {
  cd "${pkgname}-${pkgver}"

  # Install the program.
  make install
}

# vim:set ts=2 sw=2 et:
