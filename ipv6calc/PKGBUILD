# Maintained by Mark <mark@caffeine-powered.net>.

pkgname=ipv6calc
pkgver=0.81.0
pkgrel=1
pkgdesc="ipv6calc is a small utility to manipulate, convert and calculate (not only) IPv6 addresses."
arch=('i686' 'x86_64')
url="http://www.deepspace6.net/projects/ipv6calc.html"
license=('GPLv2')
source=(ftp://ftp.bieringer.de/pub/linux/IPv6/ipv6calc/ipv6calc-${pkgver}.tar.gz)
sha256sums=('b80d8117fabb990ce2ef0d079fed08c2821510fc6de92eec2f7ae53ae888b423')
build() {
	cd $pkgname-$pkgver
	./configure --prefix=$startdir/pkg/usr  --mandir=$startdir/pkg/usr/man
	make  || return 1
	make install
}
