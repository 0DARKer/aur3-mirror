# Maintainer: Neer Sighted (neersighted) <neersighted@myopera.com>
# Contributor: Mark <void+aur[at]voidzero.net>

pkgname=ipv6calc
pkgver=0.93.1
pkgrel=1
pkgdesc="Small utility to manipulate, convert and calculate (more than) IPv6 addresses"
url='http://www.deepspace6.net/projects/ipv6calc.html'
license=('GPL2')
source=("ftp://ftp.bieringer.de/pub/linux/IPv6/ipv6calc/ipv6calc-${pkgver}.tar.gz")
md5sums=('9a5b7fdd1a90cd621dc43623976d912a')
sha1sums=('8cd23ed0bee03d79c70662e64ab4c7aae1219439')
sha256sums=('31c6473c96f24691b28c33831a0c184e86aa2396afe8c5fbc2e7e14d85043e47')
arch=('i686' 'x86_64')

prepare() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Run autotools.
  autoconf
}

build() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Configure the build.
  ./configure \
    --prefix="${pkgdir}/usr"

  # Build it!
  make
}

check() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Run the test suite.
  make test
}

package() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Build it!
  make install
}

