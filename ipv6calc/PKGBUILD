# Maintainer: neersighted <n@neersighted.com>
# Contributor: Mark <void+aur[at]voidzero.net>

pkgname=ipv6calc
pkgver=0.95.0
pkgrel=1
pkgdesc='Small utility to manipulate, convert and calculate (more than) IPv6 addresses'
url='http://www.deepspace6.net/projects/ipv6calc.html'
license=('GPL2')
source=("ftp://ftp.bieringer.de/pub/linux/IPv6/ipv6calc/ipv6calc-${pkgver}.tar.gz")
md5sums=('7a3053afc88b08d95432d7500d73eeaf')
sha1sums=('1ccc82e4737374efa5e7af8f218ec03fe0e17ae1')
sha256sums=('be8f25be14ea1fc9814e791c1757fa2a3cc32f82202388d3030604eac84873b0')
arch=('i686' 'x86_64')
checkdepends=('perl-digest-sha1' 'perl-uri')

prepare() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Run autotools.
  autoconf
}

build() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Configure the build.
  ./configure \
    --prefix="${pkgdir}/usr"

  # Build it!
  make
}

check() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Run the test suite.
  make test
}

package() {
  cd "${srcdir}/ipv6calc-${pkgver}"

  # Install the program.
  make install
}

