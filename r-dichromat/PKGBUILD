# Maintainer: Tobias Neumann <mail at tobias dash neumann dot eu>

pkgname=r-dichromat
pkgver=1.2_4
pkgrel=2
pkgdesc="Collapse red-green distinctions to simulate the effects of colour-blindness"
arch=('i686' 'x86_64')
url="http://cran.r-project.org/web/packages/dichromat/index.html"
license=('GPL-2')
depends=('r')
source=(http://cran.r-project.org/src/contrib/dichromat_1.2-4.tar.gz)

build() {
 mkdir -p $pkgdir/usr/lib/R/library
 cd $srcdir
 R CMD INSTALL -l ../pkg/usr/lib/R/library ./dichromat
}
md5sums=('d84b6cc1ba07fb84378ed2cf8cd84c80')
