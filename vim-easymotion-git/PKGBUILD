# Contributor: Andreas B. Wagner <AndreasBWagner@pointfree.net>
pkgname=vim-easymotion-git
pkgver=20110330
pkgrel=1
pkgdesc="simpler and faster vim motions"
arch=('any')
url="https://github.com/Lokaltog/vim-easymotion"
license=('unknown')
groups=('vim-plugins')
depends=('vim-runtime')
makedepends=('git')
provides=('vim-easymotion')
conflicts=('vim-easymotion')
replaces=()
backup=()
options=()
install=vimdoc.install
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot="git://github.com/Lokaltog/vim-easymotion.git"
_gitname="vim-easymotion"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  install -Dm755 plugin/EasyMotion.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/EasyMotion.vim || return 1
  mkdir -p ${pkgdir}/usr/share/vim-scripts/easymotion/
  install -Dm644 {doc/easymotion.txt,README.md} ${pkgdir}/usr/share/vim-scripts/easymotion/
} 
