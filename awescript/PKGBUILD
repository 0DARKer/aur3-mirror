# Maintainer: dryes <joswiseman@gmail>
pkgname=awescript
pkgver=1.0
pkgrel=1
pkgdesc="Awescript is a handy little script for tidying your RARs."
url="http://x264.rescene.com/awescript/"
arch=('any')
license=('Custom')
depends=('python' 'rescene-bin' 'resample-bin')
makedepends=('unrar')
source=('http://x264.rescene.com/awescript/awescript_src.rar' 'awescript.sh')
md5sums=('16f387f738d180f558b68811c4370534' 'fb4ec9b3318d1d2f2993abb16af8289d')

package() {
  mkdir -p "$pkgdir/opt/awescript"

  unrar e awescript_src.rar awescript.py README.txt "$pkgdir/opt/awescript"
  sed -i 's|mono /usr/local/bin/srr.exe|srr|g;s|mono /usr/local/bin/srs.exe|srs|g' "$pkgdir/opt/awescript/awescript.py"
	
  install -D -m755 "$srcdir/awescript.sh" "$pkgdir/usr/bin/awescript"
}
