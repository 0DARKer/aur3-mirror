#Maintainer: Andrew Bibb <ajbibb@myfairpoint.net>
pkgname=cmst
pkgver=2014.08.23
pkgrel=1
pkgdesc="A QT based GUI front end for the connman connection manager with systemtray icon"
arch=('i686' 'x86_64')
url="https://github.com/andrew-bibb/cmst"
license=('MIT')
depends=('qt5-base' 'connman' 'libxkbcommon-x11')
optdepends=
changelog=
source=(https://github.com/andrew-bibb/cmst/releases/download/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz)
noextract=()
md5sums=('51239b5e0b856068d302e3f5a8bdbdf6')

build() {
	cd "$srcdir/$pkgname"
	qmake-qt5 
	make 
}


package() {
	cd "$srcdir/$pkgname"
	make INSTALL_ROOT="$pkgdir/" install
}
