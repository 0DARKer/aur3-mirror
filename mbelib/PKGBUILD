# Maintainer: Kyle Keen <keenerd@gmail.com>

pkgname=mbelib
pkgver=1.2.3
pkgrel=1
pkgdesc="Voice codecs for P25, ProVoice, Half Rate"
arch=('i686' 'x86_64')
url="https://github.com/szechyjs/mbelib"
license=('custom:copyright')
depends=('glibc')
optdepends=()
source=("https://github.com/szechyjs/mbelib/archive/master.tar.gz")
md5sums=('fde139931bd706ab7735faf43db60308')

build() {
    cd "$srcdir/$pkgname-master"

    # ./configure is baloney
    make DEST_BASE="/usr"
}

package() {
    cd "$srcdir/$pkgname-master"

    # no DESTDIR either
    install -d "$pkgdir/usr/lib"
    cp -a libmbe.* "$pkgdir/usr/lib"
    install -Dm644 mbelib.h "$pkgdir/usr/include/mbelib.h"
    install -Dm644 COPYRIGHT "$pkgdir/usr/share/licenses/$pkgname/COPYRIGHT"
}
