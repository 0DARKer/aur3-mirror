# Packager: Justin Davis (juster) <jrcd83@gmail.com>

pkgname=perl-www-aur
pkgver=0.17
pkgrel=2
pkgdesc='API for the Archlinux User Repository website.'
arch=(any)
license=(PerlArtistic GPL)
options=(!emptydirs)
depends=(perl-http-cookies perl-json perl-libwww 'perl-lwp-protocol-https>=6'
         perl-uri)
url=https://metacpan.org/release/WWW-AUR
source=("http://search.cpan.org/CPAN/authors/id/J/JU/JUSTER/WWW-AUR-$pkgver.tar.gz")
md5sums=(2c20b6a3142fff0a3bd3ca28db28ed2f)
sha512sums=(7053ebaa90a283a4fd57a0550c6fd1ce43571fa14368e5c29c4656477edc34054d035ed62216d51cfa8d620a92a69d8a7e5fcb360d349c955f89c8d25f5addc5)
_ddir=WWW-AUR-0.17

build()
(
  cd "$srcdir/$_ddir"
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make
)

check()
(
  cd "$srcdir/$_ddir"
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test
)

package()
(
  cd "$srcdir/$_ddir"
  make install INSTALLDIRS=vendor DESTDIR="$pkgdir"
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
)

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
