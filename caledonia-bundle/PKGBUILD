# Mantainer: Cippaciong <lacapannadelloziotom [at] gmail [dot] com>

pkgname=caledonia-bundle
pkgver=1.3
pkgrel=1
pkgdesc="A bundle with all Caledonia customizations: ksplash, kdm, plasma themes, colors scheme and wallpapers"
arch=('any')
url=(http://malcer.deviantart.com/)
license=('CC-BY; CC-BY-SA')
depends=('kdebase-workspace')
makedepends=()
source=('http://sourceforge.net/projects/caledonia/files/Caledonia%20%28Plasma-KDE%20Theme%29/Caledonia.tar.gz'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20KDM/Caledonia-KDM.tar.gz'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20KSplash/Caledonia-KSplash.tar.gz'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20Color%20Scheme/Caledonia.colors'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20Official%20Wallpapers/Caledonia_Official_Wallpaper_Collection.tar.gz')

sha256sums=('f1fed242aefeebc62c815f435467d1b0f527014f6228237c4c97b9039e791bb3'			#Caledonia Plasma
'b74fb587be30a30dc61c9817733a29a20c6ab754932fa938b25a8a38cd0dce72'				#Caledonia KDM
'435084ec25378d0506c40921a4af79828ea059b2dda0baa2cf0f1f53f81917c6'				#Caledonia KSplash
'a5446d3a1e6e2b5082cae6135bdbe2647a5cf08d050109a0604622e74136e8fc'				#Caledonia Colors
'25cdc748c30c0bb8aea3e52d920556382162774000affaf397fb209b256d32c7')				#Caledonia Wallpapers


package() {
mkdir -p $pkgdir/usr/share/apps/kdm/themes/caledonia
chmod 755 -R $pkgdir/usr/share/apps/kdm/themes
mkdir -p $pkgdir/usr/share/apps/ksplash/Themes/caledonia
chmod 755 -R $pkgdir/usr/share/apps/ksplash/Themes
mkdir -p $pkgdir/usr/share/wallpapers
chmod 755 -R $pkgdir/usr/share/wallpapers
mkdir -p $pkgdir/usr/share/apps/desktoptheme/Caledonia
chmod 755 -R $pkgdir/usr/share/apps/desktoptheme
mkdir -p $pkgdir/usr/share/apps/color-schemes
chmod 755 -R $pkgdir/usr/share/apps/color-schemes

cd ${srcdir}/Caledonia-KDM
cp -rf * $pkgdir/usr/share/apps/kdm/themes/caledonia

cd ${srcdir}/Caledonia-KSplash
cp -rf * $pkgdir/usr/share/apps/ksplash/Themes/caledonia

cd ${srcdir}/Caledonia_Official_Wallpaper_Collection
rm README
cp -rf * $pkgdir/usr/share/wallpapers

cd ${srcdir}/Caledonia
cp -rf * $pkgdir/usr/share/apps/desktoptheme/Caledonia

cd ${srcdir}
cp Caledonia.colors $pkgdir/usr/share/apps/color-schemes/Caledonia.colors
}
