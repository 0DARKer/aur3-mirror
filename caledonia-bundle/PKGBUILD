pkgname=caledonia-bundle
pkgver=1.3
pkgrel=4
pkgdesc="A bundle with all Caledonia customizations: ksplash, kdm, plasma themes, colors scheme and wallpapers"
arch=('any')
url=(http://malcer.deviantart.com/)
license=('CC-BY; CC-BY-SA')
depends=('kdebase-workspace')
makedepends=()
source=('http://sourceforge.net/projects/caledonia/files/Caledonia%20%28Plasma-KDE%20Theme%29/Caledonia.tar.gz'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20KDM/Caledonia-KDM.tar.gz'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20KSplash/Caledonia-KSplash.tar.gz'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20Color%20Scheme/Caledonia.colors'
'http://sourceforge.net/projects/caledonia/files/Caledonia%20Official%20Wallpapers/Caledonia_Official_Wallpaper_Collection.tar.gz')

sha256sums=('f1fed242aefeebc62c815f435467d1b0f527014f6228237c4c97b9039e791bb3'
            'cba3479e5c4720ee02aa4ef1647f1a5931c82e30a72578b35e6cc79b1e53320f'
            'abfcfba96cf22ce3df75cf73d94f4aee09e953b52c24e1536ee6aaf35c7dc8ab'
            'a5446d3a1e6e2b5082cae6135bdbe2647a5cf08d050109a0604622e74136e8fc'
            '237401716f90466376e0fbbc6ece78b7cf13bb77de7dcc0ba9f91e4513424da2')

package() {
	mkdir -p -m755 "$pkgdir/usr/share/apps/kdm/themes" \
	               "$pkgdir/usr/share/apps/ksplash/Themes" \
	               "$pkgdir/usr/share/apps/desktoptheme" \
	               "$pkgdir/usr/share/apps/color-schemes" \
	               "$pkgdir/usr/share/wallpapers"

	cp -r Caledonia-KDM "$pkgdir/usr/share/apps/kdm/themes"
	cp -r Caledonia-KSplash "$pkgdir/usr/share/apps/ksplash/Themes"
	cp -rf Caledonia "$pkgdir/usr/share/apps/desktoptheme"
	cp Caledonia.colors "$pkgdir/usr/share/apps/color-schemes"

	cd Caledonia_Official_Wallpaper_Collection
	rm README
	cp -rf * "$pkgdir/usr/share/wallpapers"
}
