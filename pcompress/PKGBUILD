# Contributor: PLum <plum.michalski@gmail.com>
pkgname=pcompress
pkgver=2.1
pkgrel=1
arch=(i686 x86_64)
pkgdesc="Pcompress is a utility to do compression/decompression and deduplication in parallel by splitting input data into chunks."
url="http://moinakg.github.io/pcompress/"
license=('LGPL v3')
makedepends=('gcc')
source=("https://pcompress.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2")
sha1sums=("a66cedb3cd9d136ac017bb6a019ac953bd4bf655")

build()
{
  cd $startdir/src
  tar -xvf ${pkgname}-${pkgver}.tar.bz2
  cd ${pkgname}-${pkgver}
  ./config --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  
}
