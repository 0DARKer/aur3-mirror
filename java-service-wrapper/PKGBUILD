# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Artyom Olshevskiy <siasia@siasia>
pkgname=java-service-wrapper
pkgver=3.5.11
pkgrel=1 
pkgdesc="Enables a Java Application to be run as a Windows Service or Unix Daemon"
url="http://wrapper.tanukisoftware.com/"
arch=('i686')
license=('GPL')
depends=(java-runtime)
makedepends=(apache-ant)
conflicts=()
replaces=()
backup=()
install=
_pkgts=20110816
source=(http://sourceforge.net/projects/wrapper/files/wrapper_src/Wrapper_${pkgver}_${_pkgts}/wrapper_${pkgver}_src.tar.gz/download)
md5sums=('84b1364b152850488e9f7c727642bcad')
build() {
	cd $srcdir/wrapper_${pkgver}_src
	./build32.sh
}
package() {
	mkdir -p $pkgdir/usr/share/java/servicewrapper
	cd $pkgdir/usr/share/java/servicewrapper
	cp $srcdir/wrapper_${pkgver}_src/src/bin/sh.script.in .
	cp $srcdir/wrapper_${pkgver}_src/bin/wrapper .
	cp $srcdir/wrapper_${pkgver}_src/lib/wrapper.jar .
	cp $srcdir/wrapper_${pkgver}_src/lib/libwrapper.so .
}