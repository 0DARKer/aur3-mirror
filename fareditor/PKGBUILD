# Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=fareditor
pkgver=1.2
pkgrel=1
pkgdesc='A GTK+ editor for creating and manipulating FAR files used by "Cytadela"'
arch=('i686' 'x86_64')
url="http://cytadela.sourceforge.net/"
license=('GPL3')
depends=('gtk2')
makedepends=('automake' 'pkgconfig>=0.9')
source=(http://downloads.sourceforge.net/cytadela/$pkgname-$pkgver.tar.bz2)
md5sums=('51a2d93c591fdb4d336338047abb9fa7')

build() {
  cd FarEditor

  sed 's|doc/FarEditor|share/doc/fareditor|g' -i Makefile.in

  automake -a
  ./configure \
	--prefix=/usr \
	--docdir=/usr/share/doc \
	--disable-static

  make || return 1
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
