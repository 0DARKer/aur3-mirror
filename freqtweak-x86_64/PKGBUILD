pkgname=freqtweak-x86_64
pkgver=0.6.1
pkgrel=2
pkgdesc="A tool for FFT-based realtime audio spectral manipulation and display - 64 bit version"
arch=(x86_64)
url="http://freqtweak.sourceforge.net/"
license=('GPL')
depends=('jack-audio-connection-kit' 'fftw' 'gtk2')
makedepends=('rpmextract')
source=(http://ccrma.stanford.edu/planetccrma/mirror/fedora/linux/planetccrma/10/x86_64/freqtweak-0.6.1-5.fc10.ccrma.x86_64.rpm
	ftp://ftp.pbone.net/mirror/www-ccrma.stanford.edu/planetccrma/mirror/fedora/linux/planetccrma/10/x86_64/compat-wxGTK24-2-2.4.2-21.1.fc10.ccrma.x86_64.rpm
	ftp://195.220.108.108/linux/fedora/releases/10/Everything/x86_64/os/Packages/libsigc++-1.2.7-6.fc9.x86_64.rpm)
build() {
  
  rpmextract.sh compat-wxGTK24-2-2.4.2-21.1.fc10.ccrma.x86_64.rpm
  rpmextract.sh libsigc++-1.2.7-6.fc9.x86_64.rpm
  rpmextract.sh freqtweak-0.6.1-5.fc10.ccrma.x86_64.rpm

  cp -R usr/ $startdir/pkg
}
