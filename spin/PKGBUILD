# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: Pierre Chapuis <catwell@archlinux.us>

pkgname=spin
pkgver=5.2.5
pkgrel=1
pkgdesc='Tool for the formal verification of distributed software systems.'
arch=('i686' 'x86_64')
url='http://spinroot.com/'
license=('custom')
depends=('glibc')
source=("http://spinroot.com/spin/Src/src${pkgver//./}.tar.gz"
        'LICENSE.txt')
md5sums=('1c344faf8945a21f40ba0454ebd9b2c1'
         '1b7db1b5f5da972bab3db17472e3a342')

build() {
  cd Src$pkgver || return 1

  make || return 1
}

package() {
  cd Src$pkgver || return 1

  install -Dm755 spin "$pkgdir/usr/bin/spin" || return 1

  install -Dm644 "$srcdir/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt" || return 1
}

