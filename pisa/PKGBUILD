pkgname=pisa
pkgver=3.0.32
pkgrel=2
pkgdesc="A python HTML to PDF renderer"
arch=('i686' 'x86_64')
url="http://www.xhtml2pdf.com/"
license=('GPL')
depends=('python>=2.3' 'python-reportlab>=2.2' 'python-html5lib>=0.11.1')
optdepends=('python-pypdf>=1.11')
install=(pisa.install)
source=(http://pypi.python.org/packages/source/p/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
        cd $startdir/src/$pkgname-$pkgver
        python setup.py install --root=$startdir/pkg || return 1

}

md5sums=('d68f2f76e04b10f73c07ef4df937b243')
