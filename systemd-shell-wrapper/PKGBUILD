pkgname=systemd-shell-wrapper
pkgver=1.4
pkgrel=1
pkgdesc="Simple shell wrapper script around the systemd ctls, cloning rc.d output"
arch=(any)
url="https://bbs.archlinux.org/viewtopic.php?pid=1179874"
license=('WTFPL')
depends=('bash')
optdepends=()
makedepends=()
conflicts=()
provides=()
replaces=()
backup=()
source=("shell-wrapper.conf" "systemd-shell-wrapper.bash" "systemd-shell-wrapper.sh")
install=${pkgname}.install
sha256sums=('bf205ac0edcaf51a361643c798ff0975ffc0ad099ec0ae557a0e4d8c9bde1e29'
            '24f20dc5e1a27ae748596aafadb4bea954df7ca19447091a313529fdfe58b964'
            'da48aacbb8d1e382f8414dc3c1e3f26b9431566586c39fc612439c0aebbb33ba')

build() {
    install -D -m 644 "$srcdir/shell-wrapper.conf" "$pkgdir/etc/systemd/shell-wrapper.conf"
    install -D -m 755 "$srcdir/systemd-shell-wrapper.bash" "$pkgdir/etc/profile.d/systemd-shell-wrapper.bash"
    install -D -m 755 "$srcdir/systemd-shell-wrapper.sh" "$pkgdir/etc/profile.d/systemd-shell-wrapper.sh"
}
