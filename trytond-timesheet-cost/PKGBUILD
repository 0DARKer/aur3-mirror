# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-timesheet-cost
_pkgname=trytond_timesheet_cost
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The timesheet_cost module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-company>=3.2' 'trytond-timesheet>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("5f954e3fee22637f185ea65143bc6c86")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}