# Contributor: Devin Mullins <me@twifkak.com>
pkgname=tagsistant
pkgver=0.2.pre1
pkgrel=2
pkgdesc="a semantic (tagging) filesystem"
arch=(i686 x86_64)
url="http://www.tagsistant.net/"
license=(GPL)
depends=(fuse sqlite3 gtk2 glib2)
makedepends=(binutils gcc make autoconf sed) # bother listing base/base-devel packages?
install=tagsistant.install

# ugh -- note it says "tag" -- he typoed the filename
source=("http://download.gna.org/tagfs/$pkgname-$pkgver.tag.bz2")
md5sums=('6ac4c9cb0eba618d6e031fac0960ae38')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  # Fix broken tarball:
  sed -i "{ s|/usr/local|$startdir/pkg/usr|g; s|mkdir|mkdir -p|g; s|/usr/bin/install|install|g }" \
         src/tagman/src/Makefile
  make || return 1
  make DESTDIR=$startdir/pkg install
}
