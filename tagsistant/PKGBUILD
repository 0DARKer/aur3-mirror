# Maintainer: Joshua Stiefer <facedelajunk@gmail.com>
# Contributor: Devin Mullins <me@twifkak.com>

pkgname=tagsistant
pkgver=0.2.20121028
pkgrel=1
pkgdesc="a semantic (tagging) filesystem"
arch=('i686' 'x86_64')
url="http://www.tagsistant.net/"
license=('GPL')
depends=('fuse' 'sqlite3' 'gtk2')
conflicts=('tagsistant-development')
options=(!libtool)
install=tagsistant.install
source=("tagsistant-0.2-20121028.tgz::http://www.tagsistant.net/download/tagsistant-0-2-tgz/finish/3-tagsistant-0-2/2-tagsistant-0-2-tgz/0"
		"01_file_handle.patch")
md5sums=('a060d2cf31f1e920a35eb545abda13c5'
         '33f84ef85c0ff1142ad7f461467589e0')

prepare() {
  cd "$srcdir/$pkgname-0.2-20121028"
  sed -i "s#@prefix@#\${DESTDIR}/@prefix@#g" Makefile.am src/tagman/Makefile.am
}

build() {
  cd "$srcdir/$pkgname-0.2-20121028"
  autoreconf -vfi
  ./configure --prefix=/usr --datarootdir="$pkgdir/usr/share"
  make
}

package() {
  cd "$srcdir/$pkgname-0.2-20121028"
  make DESTDIR="$pkgdir" install
}
