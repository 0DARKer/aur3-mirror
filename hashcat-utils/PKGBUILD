#Maintainer: Tom Richards <tom@tomrichards.net>

pkgname=hashcat-utils
pkgver=1.0
pkgrel=1
pkgdesc="A set of small utilities that are useful in advanced password cracking"
arch=('i686' 'x86_64')
url='http://hashcat.net/wiki/doku.php?id=hashcat_utils'
license=('custom')
depends=('perl')
source=("http://hashcat.net/tools/hashcat-utils/$pkgname-$pkgver.7z"
        'Makefile')
sha256sums=('c0b96d6395bd73865e0dbe30aedcaf8c8b6cd610d22b39088be3b51929e41362'
            'ef675393962ddb3ec9ae7cd9c8f13ab0aec532a1e5a1c8a4d13566999e7999ac')

prepare() {
    cd "$srcdir/$pkgname-$pkgver"
    cp ../Makefile .
    make clean
}

build() {
    cd "$srcdir/$pkgname-$pkgver"
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}
