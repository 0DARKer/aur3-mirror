# Maintainer: Michael Schubert <mschu.dev at gmail>
pkgname=thrust
pkgver=1.3.0
pkgrel=2
pkgdesc="Thrust is a CUDA library of parallel algorithms similar to the C++ Standard Template Library (STL)."
arch=('any')
url="http://code.google.com/p/thrust/"
license=('Apache 2.0')
depends=('cuda')
source=("http://thrust.googlecode.com/files/$pkgname-v$pkgver.zip")
md5sums=('a1e646886931091d6cf59478928704f4')

build() {
  mkdir -p $pkgdir/usr/include
  cp -R $srcdir/thrust $pkgdir/usr/include/
  # set environment variable
  mkdir -p $pkgdir/etc/profile.d
  echo "export THRUST_PATH=/usr/include" > $pkgdir/etc/profile.d/thrust.sh
  chmod a+x $pkgdir/etc/profile.d/thrust.sh
}
