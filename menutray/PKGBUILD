# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=menutray
pkgver=0.3.1
pkgrel=1
pkgdesc="A simple Gtk2 application menu written in Perl."
arch=('any')
url="http://i44.tinypic.com/72g781.jpg"
license=('GPL')
depends=('perl' 'gtk2-perl')
source="http://trizen.googlecode.com/files/$pkgname-$pkgver.tar.gz"
md5sums=('b64574ca6b4a2c9f04a6e95e1b42ad6b')

package() {
  install -Dm 755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
  mkdir -p "$pkgdir/usr/share/$pkgname";
  cp -r "$srcdir/icons/" "$pkgdir/usr/share/$pkgname"
}
