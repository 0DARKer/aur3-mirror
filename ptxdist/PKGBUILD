# AUR Category: devel

pkgname=ptxdist
pkgver=2014.12.0
pkgrel=1
pkgdesc="Embedded Linux build system"
arch=('i686' 'x86_64')
url="http://www.ptxdist.org"
license=('GPL')
depends=('dialog' 'flex' 'bison' 'patch' 'python2')
source=("http://www.pengutronix.de/software/ptxdist/download/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('8288131742801a21cb558cf1b692b0ec1d34c6d7a7ff6fc9441e089ace130916')
sha512sums=('896b95b0ed9338be74c2973dcadfd39c91e3c8e0911d7087e3a1a5658d23ae5f46ac042a4bc85779fcdbfdf65a55607bb7472c476d0547059d1c2ac1e7e6bcba')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --with-python=/usr/bin/python2
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
