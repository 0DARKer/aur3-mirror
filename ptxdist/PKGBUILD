# AUR Category: devel

pkgname=ptxdist
pkgver=2014.09.0
pkgrel=1
pkgdesc="Embedded Linux build system"
arch=('i686' 'x86_64')
url="http://www.ptxdist.org"
license=('GPL')
depends=('dialog' 'flex' 'bison' 'patch' 'python2')
source=("http://www.pengutronix.de/software/ptxdist/download/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('d3d51c78d4ed99caa2c13bb7fca1cd8de2bcba439fe44695316010cdb5b1abb7')
sha512sums=('0fa6767e889e6b7a20964ee33b197fb69f6a11846fb925811cc56a9d87f18ab5d032913c6e93e51f134807753a897bc2588eeaf11a237ebb9018553dae09e5a9')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --with-python=/usr/bin/python2
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
