# Mantainer: William DÃ­az <wdiaz@archlinux.us>

pkgname=uuid
pkgver=1.6.2
pkgrel=5
pkgdesc="OSSP uuid - Universally Unique Identifier"
arch=('i686' 'x86_64')
url="http://www.ossp.org/pkg/lib/uuid"
license=('MIT')
depends=()
makedepends=('make')
source=("http://www.mirrorservice.org/sites/ftp.ossp.org/pkg/lib/${pkgname}/${pkgname}-${pkgver}.tar.gz"
        makefile.patch)
md5sums=('5db0d43a9022a6ebbbc25337ae28942f'
         '3112889b44ab50ec68deb9a1dc175917')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p1 < $srcdir/makefile.patch
  ./configure --prefix=/usr
  make || return 1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install || return 1
}
