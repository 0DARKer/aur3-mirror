# Maintainer: Mizuchi <ytj000+aur@gmail.com>

pkgname=python-pymongo-doc
pkgver=2.3
pkgrel=2
pkgdesc='Set of HTML documentation for pymongo'
arch=('any')
license=('apache')
url='http://pypi.python.org/pypi/pymongo/'
makedepends=('python2-sphinx')
source=("http://pypi.python.org/packages/source/p/pymongo/pymongo-$pkgver.tar.gz"
        "collapsiblesidebar.patch")
sha256sums=('8e43fdd7ea8e2aa965791af1b6e24186248023c6fde70092d9631b1d9150b1dc'
            '7021f1ed8d32c0751447753629c824264b7b1537815ed79dc69bcf9e8b7a4dc4')

package() {

  # Make me happy
  patch $srcdir/pymongo-$pkgver/doc/conf.py $srcdir/collapsiblesidebar.patch

  sphinx-build2 -E $srcdir/pymongo-$pkgver/doc $pkgdir/usr/share/doc/pymongo
}

