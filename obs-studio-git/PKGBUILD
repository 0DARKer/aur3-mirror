# Maintainer: ledti <queryv at gmail.com>

pkgname=obs-studio-git
pkgver=697.42be968
pkgrel=1
pkgdesc="A rewrite of what was formerly known as Open Broadcaster Software."
arch=('i686' 'x86_64')
url="https://github.com/jp9000/obs-studio"
license=('GPL2')
depends=('ffmpeg' 'libgl' 'libxinerama' 'qt5-base' 'qt5-x11extras')
makedepends=('cmake' 'git' 'qt5-tools')
provides=('obs-studio')
conflicts=('obs-studio')
source=('obs-studio::git://github.com/jp9000/obs-studio.git#branch=master')
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/obs-studio"
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

build() {
  cd "$srcdir/obs-studio"
  cmake -DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd "$srcdir/obs-studio"
  make DESTDIR="$pkgdir" install
}

