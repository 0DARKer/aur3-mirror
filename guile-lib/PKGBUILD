# Contributor: tantalum <tantalum at online dot de>
pkgname=guile-lib
pkgver=0.1.9
pkgrel=1
pkgdesc='Repository of useful code written in Guile Scheme (including sxml library)'
arch=('i686' 'x86_64')
license=("GPL3 and LGPL3")
depends=(guile)
url=http://www.nongnu.org/guile-lib/
source=("http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=(e658c1647ed1026a0f021df1d3dcc280)
build(){
 cd ${srcdir}/${pkgname}-${pkgver} &&

 ./configure --prefix=/usr || return 1
 make && make DESTDIR=${pkgdir} install || return 1

 #remove documentation
 if [ -e ${pkgdir}/usr/share/info/dir ]; then
  rm ${pkgdir}/usr/share/info/dir
 fi
}
