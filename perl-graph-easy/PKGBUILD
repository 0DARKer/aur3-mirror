pkgname='perl-graph-easy'
pkgver='0.72'
pkgrel='1'
pkgdesc="Convert or render graphs (as ASCII, HTML, SVG or via Graphviz)"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.8.2')
makedepends=()
url='http://search.cpan.org/dist/Graph-Easy'
source=('http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/Graph-Easy-0.72.tar.gz')
md5sums=('f8e510a35b951211fb5b85c8573e94c6')
