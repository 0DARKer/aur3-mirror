# contributor uastasi <uastasi@archlinux.us>

pkgname=banshee-notify-osd
realname=banshee
pkgver=1.4.3
pkgrel=3
pkgdesc="Patched banshee version for notify-osd"
arch=('i686' 'x86_64')
url="http://banshee-project.org/"
license=('MIT')
depends=('sqlite3' 'ndesk-dbus-glib>=0.4.1' 'mono-addins>=0.3.1' 'taglib-sharp>=2.0.3.1' 'gstreamer0.10-good-plugins' 'gstreamer0.10-base-plugins' 'gnome-sharp>=2.24.0' 'libmtp>=0.2.6.1' 'ipod-sharp>=0.8.1' 'boo' 'mono-zeroconf' 'libxxf86vm' 'gnome-icon-theme>=2.24.0')
makedepends=('perlxml' 'pkgconfig' 'intltool>=0.35.0')
optdepends=('gstreamer0.10-ugly-plugins: Extra media codecs'
	    'gstreamer0.10-bad-plugins: Extra media codecs'
	    'gstreamer0.10-ffmpeg: Extra media codecs'
	    'brasero: CD burning'
	    'notify-sharp-svn: Display Banshee tray icon')
options=('!libtool' '!makeflags' '!emptydirs')
conflicts=('banshee')
provides=('banshee')

install=banshee-notify-osd.install
source=(http://download.banshee-project.org/${realname}/${realname}-1-${pkgver}.tar.bz2 notify.patch)
md5sums=('880dee65d2bfe62be711a8edfe4d737f'
         'b65cbb2d9bc533237307cc8a1a0446eb')

	 build() {
  export MONO_SHARED_DIR="${srcdir}/.wabi"
  mkdir -p "${MONO_SHARED_DIR}"
  cd "${srcdir}/${realname}-1-${pkgver}"
  patch -Np0 -i ../notify.patch
  LD_PRELOAD="" ./configure --prefix=/usr \
        --sysconfdir=/etc --localstatedir=/var \
	--disable-docs --disable-static || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/usr/share/licenses/${realname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${realname}/" || return 1

  install -d -m755 "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${realname}.schemas" ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
