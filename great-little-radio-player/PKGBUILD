# Maintainer: blast beat


pkgname=great-little-radio-player
pkgver=1.4.2
pkgrel=3
pkgdesc="A robust internet radio station streamer"
arch=('i686' 'x86_64')
url="https://sites.google.com/site/glrpgreatlittleradioplayer"
license=('GPL-3.0+')
depends=('qt4' 'phonon' 'phonon-gstreamer' 'freetype2')
optdepends=()
if [[ $CARCH == x86_64 ]]; then
source=(${pkgname}-$pkgver-${_arch}.rpm::https://dl.dropboxusercontent.com/u/39481742/greatlittleradioplayer-1.4.2-2.x86_64.rpm)
sha1sums=('16db05abd9462d34ffa968d8324e89bd7d3aee0b')
else
source=(${pkgname}-$pkgver-${_arch}.rpm::https://dl.dropboxusercontent.com/u/39481742/greatlittleradioplayer-1.4.2-2.i386.rpm)
sha1sums=('1ea003421fb4672992515e3377f0b692869b6786') 
fi

package() {
  cd "${srcdir}"
  
  
  cp -r ${srcdir}/opt ${pkgdir}/opt
  
  mkdir -p $pkgdir/usr/share/applications
  install -m755 $srcdir/usr/share/applications/extras-greatlittleradioplayer.desktop $pkgdir/usr/share/applications
  }
