# Maintainer: blast beat


pkgname=great-little-radio-player
pkgver=1.4.1
pkgrel=1
pkgdesc="A robust internet radio station streamer"
arch=('i686' 'x86_64')
url="https://sites.google.com/site/glrpgreatlittleradioplayer"
license=('GPL-3.0+')
depends=('qt4' 'phonon' 'phonon-gstreamer' 'freetype2')
optdepends=()
if [[ $CARCH == x86_64 ]]; then
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/greatlittleradioplayer-1.4.1-1.x86_64.rpm
license.html::http://www.gnu.org/licenses/gpl-3.0.html)
sha1sums=('78abf1cfa5ecf04d2f4943e82abfa86b9bdb1559' 'SKIP')
else
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/greatlittleradioplayer-1.4.1-1.i386.rpm
license.html::http://www.gnu.org/licenses/gpl-3.0.html)
sha1sums=('f2e1c97fdcfcad9f5ca1c16aa1baa4e2885a4f76' 'SKIP') 
fi

package() {
  cd "${srcdir}"
  
  
  cp -r ${srcdir}/opt ${pkgdir}/opt
  
  mkdir -p $pkgdir/usr/share/applications
  install -m755 $srcdir/usr/share/applications/extras-greatlittleradioplayer.desktop $pkgdir/usr/share/applications
  }