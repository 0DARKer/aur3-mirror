# Maintainer: blast beat


pkgname=great-little-radio-player
pkgver=1.4.3
pkgrel=2
pkgdesc="A robust internet radio station streamer"
arch=('i686' 'x86_64')
url="https://sites.google.com/site/glrpgreatlittleradioplayer"
license=('GPL-3.0+')
depends=('qt4' 'phonon' 'phonon-gstreamer' 'freetype2')
optdepends=()
if [[ $CARCH == x86_64 ]]; then
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/v1.4.3/greatlittleradioplayer-1.4.3-2.x86_64.rpm)
sha1sums=('43eb8a893315c65d0bc64577f41c5f7f1932c809')
else
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/v1.4.3/greatlittleradioplayer-1.4.3-2.i386.rpm)
sha1sums=('427a1e0f5f4e9bada382e8a41b69b00cbbbf55d0') 
fi

package() {
  cd "${srcdir}"
  
  
  cp -r ${srcdir}/opt ${pkgdir}/opt
  
  mkdir -p $pkgdir/usr/share/applications
  install -m755 $srcdir/usr/share/applications/extras-greatlittleradioplayer.desktop $pkgdir/usr/share/applications
  }
  

 
