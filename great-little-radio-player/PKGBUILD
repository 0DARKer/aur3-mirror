# Maintainer: blast beat


pkgname=great-little-radio-player
pkgver=1.4.5
pkgrel=2
pkgdesc="A robust internet radio station streamer"
arch=('i686' 'x86_64')
url="https://sites.google.com/site/glrpgreatlittleradioplayer"
license=('GPL-3.0+')
depends=('qt4' 'phonon' 'freetype2')
optdepends=('phonon-gstreamer')
if [[ $CARCH == x86_64 ]]; then
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/v1.4.5/greatlittleradioplayer-1.4.5-2.x86_64.rpm)
sha1sums=('5d2762f8f2896fe0bcdfe2e4e08de8673a59ffbf')
else
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/v1.4.5/greatlittleradioplayer-1.4.5-2.i386.rpm)
sha1sums=('44566e7e88f293ab02f69cd582364393e8b6b73b') 
fi


package() {
  cd "${srcdir}"
  
  
  cp -r ${srcdir}/opt ${pkgdir}/opt
  
  mkdir -p $pkgdir/usr/share/applications
  install -m755 $srcdir/usr/share/applications/extras-greatlittleradioplayer.desktop $pkgdir/usr/share/applications
  }
