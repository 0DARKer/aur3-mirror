# Maintainer: blast beat


pkgname=great-little-radio-player
pkgver=1.4.6
pkgrel=2
pkgdesc="A robust internet radio station streamer"
arch=('i686' 'x86_64')
url="https://sites.google.com/site/glrpgreatlittleradioplayer"
license=('GPL-3.0+')
depends=('qt4' 'phonon' 'freetype2')
optdepends=('phonon-gstreamer')
if [[ $CARCH == x86_64 ]]; then
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/v1.4.6/greatlittleradioplayer-1.4.6-2.x86_64.rpm)
sha1sums=('7edbeffa54bc3b783577295920db9e7f477ca2d0')
else
source=(${pkgname}-$pkgver-${_arch}.rpm::http://sourceforge.net/projects/glrp/files/v1.4.6/greatlittleradioplayer-1.4.6-2.i386.rpm)
sha1sums=('7b3edb823e2e143c6539b971cb96a40782a5d942') 
fi


package() {
  cd "${srcdir}"
  
  
  cp -r ${srcdir}/opt ${pkgdir}/opt
  
  mkdir -p $pkgdir/usr/share/applications
  install -m755 $srcdir/usr/share/applications/extras-greatlittleradioplayer.desktop $pkgdir/usr/share/applications
  }
