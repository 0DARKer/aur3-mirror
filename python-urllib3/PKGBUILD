# Maintainer: Chris Brannon <cmbrannon79@gmail.com>

pkgname=python-urllib3
pkgver=0.4.1
pkgrel=1
pkgdesc="HTTP library with thread-safe connection pooling and file post support"
arch=('any')
url="http://code.google.com/p/urllib3/"
license=('MIT')
depends=('python2')
makedepends=('setuptools')
source=("http://urllib3.googlecode.com/files/urllib3-$pkgver.tar.gz" LICENSE)

build() {
  cd "$srcdir/urllib3-$pkgver"
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 "$srcdir/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm644 README.txt "$pkgdir/usr/share/doc/$pkgname/README.txt"
  find "$pkgdir" -name '*.py' -print0 |xargs -0 \
    sed -i -e 's,^#!/usr/bin/env python$,#!/usr/bin/env python2,' \
    -e 's,^#!/usr/bin/python$,#!/usr/bin/python2,'
}
md5sums=('1e94701af1395f1c22e6adbf32af6b99'
         '350846ab4dd11ce105b570c15c1b0764')
