pkgname=pyalpm-git
pkgver=20080925
pkgrel=2
pkgdesc="python bindings for the alpm library"
arch=('i686' 'x86_64')
url="http://pyalpm.sourceforge.net"
license=('GPL')
depends=('python')
makedepends=('git')
source=()
md5sums=()

_gitroot="http://github.com/ornitorrincos/pyalpm.git"
_gitname="pyalpm"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git-pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -r "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  python setup.py build || return 1
  python setup.py install --root=$pkgdir || return 1
} 
