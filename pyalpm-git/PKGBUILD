# Maintainer : Dave Reisner <d@falconindy.com>

pkgname=pyalpm-git
pkgver=0.5.3.17.g3c4692b
pkgrel=1
pkgdesc="Libalpm bindings for Python 3"
arch=('i686' 'x86_64')
url="http://projects.archlinux.org/users/remy/pyalpm.git/"
license=('GPL')
depends=('python>=3.2' 'pacman')
provides=('pyalpm')
conflicts=('pyalpm')
makedepends=('git')
source=("git://projects.archlinux.org/users/remy/pyalpm.git")
md5sums=('SKIP')

pkgver() {
  cd pyalpm

  git describe | sed 's/-/./g'
}

build() {
  cd pyalpm

  python ./setup.py build
}

package() {
  cd pyalpm

  python ./setup.py install --root=${pkgdir}

}

