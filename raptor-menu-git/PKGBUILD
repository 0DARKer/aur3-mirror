# Raptor-Menu: Installer: Arch
# Contributor: Radoslaw Mejer <radmen@gmail.com>
# Contributor: Amnon82
# Contributor: Emanuele Rossi <nuovodna at gmail dot com>

pkgname=raptor-menu-git
shortname=raptor
pkgver=20100112
pkgrel=1
pkgdesc="An improved menu system for KDE 4"
arch=('i686' 'x86_64')
url="http://www.raptor-menu.org/"
license=('GPL')
provides=('raptor-menu')
depends=('kdebase-workspace')
makedepends=('git' 'cmake' 'automoc4')
options=(!emptydirs)
source=()
md5sums=()

_gitroot="git://github.com/ruphy/raptor.git"
_gitname="${shortname}"

build() {
cd ${startdir}/src

# Source
msg "Connecting to GIT server...."
git clone $_gitroot
cd $_gitname
msg "Starting make..."

# Build
mkdir -p build/
cd build/
cmake -DCMAKE_INSTALL_PREFIX=/usr ../ || return 1
make || return 1
make DESTDIR=${startdir}/pkg/ install
} 
