# Maintainer: megadriver <megadriver at gmx dot com>

pkgname=vitunes-git
pkgver=20111209
pkgrel=1
pkgdesc="A curses-based playlist manager and media player with vim-like keybindings"
arch=('i686' 'x86_64')
license=('custom')
url="http://vitunes.org"
depends=('taglib' 'ncurses' 'mplayer')
makedepends=('git')

_gitroot=https://github.com/ryanflannery/vitunes
_gitname=vitunes

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."
  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  
  make LDEPS='`taglib-config --libs` -ltag_c -lz -lstdc++' LDFLAGS='-lm -lncursesw -lutil $(LDEPS)' linux || return 1
}

package() {
  cd "$srcdir/$_gitname-build"

  install -D -m 0555 vitunes $pkgdir/usr/bin/vitunes
  install -D -m 0444 vitunes.1 $pkgdir/usr/share/man/man1/vitunes.1
}
