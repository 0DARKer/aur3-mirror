# Maintainer: onestone at gmail dot com

pkgname=ttf-input
pkgver=20140919
pkgrel=1
pkgdesc="Fonts for Code, from Font Bureau"
arch=('any')
url="http://input.fontbureau.com/"
license=('custom:Font Software License Agreement')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
makedepends=()
conflicts=()
source=("Input-Font.zip::http://input.fontbureau.com/build/?fontSelection=whole&a=0&g=ss&i=serif&l=serif&zero=0&asterisk=0&braces=straight&preset=liberation&line-height=1.2&accept=I+do&email=")
sha256sums=('80e07bc7e90e7cbe4aaed6bd69f96cb655b8ffc98f31815b8ff51cde776a1d1b')
install=$pkgname.install

package() {
  mkdir -p $pkgdir/usr/share/fonts/TTF
  find $srcdir/Input_Fonts -name '*.ttf' -exec cp {} $pkgdir/usr/share/fonts/TTF \;
	chmod 644 $pkgdir/usr/share/fonts/TTF/*

  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp $srcdir/LICENSE.txt $pkgdir/usr/share/licenses/$pkgname
}
