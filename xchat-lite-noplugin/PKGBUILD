# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: xavi <xavi@netsons.org>

pkgname=xchat-lite-noplugin
pkgver=2.8.6
pkgrel=3
pkgdesc="xchat irc client with no plugin support at all, no dbus, no spellcheck"
arch=('i686' 'x86_64')
url="http://www.xchat.org/"
license=('GPL')
depends=('gtk2>=2.10.9' 'openssl>=0.9.8b')
conflicts=('xchat')
replaces=('xchat')
options=('!libtool')
source=(http://www.xchat.org/files/source/${pkgver%.*}/xchat-${pkgver}.tar.bz2 \
        http://www.xchat.org/files/source/2.8/patches/xc286-smallfixes.diff
        xchat-gtk2.patch)
md5sums=('1f2670865d43a23a9abc596dde999aca' 
         'eb68b6261bf6740cb5f223627eb8f384'
         'f3fe00982c0bec93152ed0b32438ef87')

build() {
  cd ${srcdir}/xchat-${pkgver}
  patch -p1 < ../xc286-smallfixes.diff || return 1
  patch -p1 < ../xchat-gtk2.patch || return 1
  
	  ./configure --prefix=/usr --sysconfdir=/etc \
                      --enable-openssl --disable-dbus \
                      --disable-gnome --enable-shm \
                      --enable-spell=none --disable-plugin \
                      --disable-perl --disable-python \
                      --disable-perl_old --enable-tcl=no || return 1
	  				   
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
