# Contributor: Roman Timushev <romikt@gmail.com>
pkgname=gnome-flags
pkgver=0.5.1
pkgrel=2
pkgdesc="show flags in GNOME layout indicator"
url="http://goodies.xfce.org/projects/panel-plugins/xfce4-xkb-plugin"
arch=('i686' 'x86_64')
license=('custom')
groups=()
depends=(gnome-applets)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
source=("http://goodies.xfce.org/releases/xfce4-xkb-plugin/xfce4-xkb-plugin-$pkgver.tar.gz")
noextract=()
md5sums=('a09ef47b54701c2344da10c0dc7bbe73')

build() {
  mkdir -p ${pkgdir}/usr/share/pixmaps
  cp $srcdir/xfce4-xkb-plugin-$pkgver/flags/*.svg ${pkgdir}/usr/share/pixmaps
}

