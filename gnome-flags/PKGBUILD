pkgname=gnome-flags
pkgver=0.5.3.3
pkgrel=1
pkgdesc="show flags in GNOME layout indicator"
url="http://goodies.xfce.org/projects/panel-plugins/xfce4-xkb-plugin"
arch=('i686' 'x86_64')
license=('custom')
groups=()
depends=(gnome-applets)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
source=("http://archive.xfce.org/src/panel-plugins/xfce4-xkb-plugin/0.5/xfce4-xkb-plugin-${pkgver}.tar.gz" gnome-flags.install)
noextract=()
md5sums=('b233cc9de1cbace075eaf6e2c9a8e685'
         '9b763c2e091c6b9ab21d3c311010335f')

build() {
  mkdir -p ${pkgdir}/usr/share/pixmaps
  cp $srcdir/xfce4-xkb-plugin-$pkgver/flags/*.svg ${pkgdir}/usr/share/pixmaps
}

