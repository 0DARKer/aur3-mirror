# Maintainer: Timothy Redaelli <timothy.redaelli@gmail.com>
pkgname=vim-securemodelines-git
pkgver=20101103
pkgrel=1
pkgdesc="A secure alternative to Vim modelines (git version)"
arch=('i686' 'x86_64')
url="http://github.com/ciaranm/securemodelines"
license=('custom:vim')
conflicts=('vim-securemodelines')
depends=('vim')
makedepends=('git')
groups=('vim-plugins')
_gitroot="git://github.com/ciaranm/securemodelines.git"
_gitname="securemodelines"

build() {
    cd $srcdir
    msg "Connecting to GIT server..."

    if [ -d $_gitname ] ; then
      cd $_gitname && git pull origin
      msg "The local files are updated."
    else
      git clone $_gitroot $_gitname
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    rm -rf "$srcdir/$_gitname-build"
    git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
    cd "$srcdir/$_gitname-build"

    VIMRUNTIME=`vim -e -T dumb --cmd 'exe "set t_cm=\<C-M>"|echo $VIMRUNTIME|quit' | tr -d '\015' `
    install -d ${pkgdir}${VIMRUNTIME}
    cp -R * ${pkgdir}${VIMRUNTIME} || return 1
}
