pkgname=ocaml-expect
pkgver=0.0.2
pkgrel=4
pkgdesc="An OUnit extension, which helps testing interactive programs."
arch=('i686' 'x86_64')
url="http://forge.ocamlcore.org/projects/ocaml-expect/"
license=('LGPL')
depends=('ocaml' 'ocaml-pcre' 'ocaml-extlib' 'ocaml-ounit')
makedepends=('ocaml-findlib')
source=("http://forge.ocamlcore.org/frs/download.php/475/$pkgname-$pkgver.tar.gz")
md5sums=('723288a1c9078f86e6185e78a6baa577')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make CONFIGUREFLAGS="--prefix /usr --destdir $pkgdir" build doc
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  export OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)"
  install -dm 755 "$OCAMLFIND_DESTDIR"
  make install
}
