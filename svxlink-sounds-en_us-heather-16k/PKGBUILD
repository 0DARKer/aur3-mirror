pkgname=('svxlink-sounds-en_us-heather-16k')
pkgver="13.12"
pkgrel=2
arch=('any')
url="http://sourceforge.net/projects/svxlink/"
license=('GPL')
pkgdesc="Sound Package en_US-heather-16k from svxlink in high quality"
depends=('svxlink')
replace=('sounds-en_us-heather-16k')
source=("${pkgname}-${pkgver}.tar.bz2::http://downloads.sourceforge.net/project/svxlink/sounds/${pkgver}/svxlink-sounds-en_US-heather-16k-${pkgver}.tar.bz2")
sha256sums=('26c19d7019d22bac1b5deb49fe7b2197ec5ca7b16daa02ec1d0a058a926f5c69')

package(){
  mkdir -p "${pkgdir}/usr/share/svxlink/sounds/en_US-heather-16k"
  cp -a "${srcdir}/en_US-heather-16k" "${pkgdir}/usr/share/svxlink/sounds/"
}
