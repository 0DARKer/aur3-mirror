pkgname=audiothumbs-patched
pkgver=0.1
pkgrel=2
pkgdesc="Plugin for KDE file managers (Dolphin and Konqueror) to preview cover arts embedded in Audio (MP3, FLAC) file tags as Thumbnails. With mime-type patch."
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/AudioThumbs?content=114885"
depends=('kdebase-workspace' 'taglib' 'flac')
makedepends=('cmake' 'automoc4')
source=(http://kde-apps.org/CONTENT/content-files/114885-AudioThumbs-$pkgver.tar.gz)
license=('GPL')
md5sums=('07c3039ddf5e88ba0ab290570f43749d')

build() {
  cd $srcdir/AudioThumbs-$pkgver
  cd src/
  wget http://dl.dropbox.com/u/16019144/AudioThumbs.patch
  patch < AudioThumbs.patch
  cd ..
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX='/usr' ..
  make || return 1
  make DESTDIR=$pkgdir install
}