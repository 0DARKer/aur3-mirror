# Contributor: Eric Forgeot < http://ifiction.free.fr >
# Maintainer: James Thomas <dairy_water at yahoo dot co dot uk>
pkgname=epubcheck
pkgver=3.0_RC_1
_realpkgver='3.0-RC-1'
pkgrel=1
pkgdesc="A tool to validate IDPF Epub files."
arch=(any)
url="http://code.google.com/p/epubcheck/"
license=('BSD')
depends=('java-environment')
makedepends=('gzip')
groups=(inform)
source=(http://${pkgname}.googlecode.com/files/${pkgname}-${_realpkgver}.zip)

md5sums=('ba51b1b1588051a4b5ab83a1b4c1a89d')

build() {
    mkdir -p $pkgdir/usr/share/${pkgname}
    mkdir -p $pkgdir/usr/bin
    
    cp -fr $srcdir/${pkgname}-${_realpkgver}/* $pkgdir/usr/share/${pkgname} 
	mv $pkgdir/usr/share/${pkgname}/${pkgname}-${_realpkgver}.jar $pkgdir/usr/share/${pkgname}/${pkgname}.jar
	
    echo "java -jar /usr/share/epubcheck/epubcheck.jar \"\$1\"" > $pkgdir/usr/bin/${pkgname}
	
    chmod +x $pkgdir/usr/bin/${pkgname}
  
    install -D -m0644 $pkgdir/usr/share/epubcheck/licenses/BSD-3-Clause.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}




