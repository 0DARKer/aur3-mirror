# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-envisageplugins
pkgver=3.2.0
_githubtag=e384372
pkgrel=1
pkgdesc="Plug-ins for the Envisage framework"
arch=('any')
url="https://github.com/enthought/envisageplugins"
license=('BSD')
depends=('python2' 'python2-envisagecore'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('python2-distribute')
conflicts=('python-enthought-utils' 'python2-envisageplugins-git' 'python-ets-envisageplugins-svn')
options=(!emptydirs)

source=("https://github.com/enthought/envisageplugins/tarball/${pkgver}")
md5sums=('72d70e047df686d0fcbfa24fc2df667d')

build() {
  cd "$srcdir/enthought-envisageplugins-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

