# Maintainer: namelessjon <jonathan.stott@gmail.com>
pkgname=libsodium
pkgver=0.4.1
pkgrel=1
pkgdesc="P(ortable|ackageable) NaCl, the Networking and Cryptography library"
arch=('i686' 'x86_64')
url="https://github.com/jedisct1/libsodium"
license=('Public Domain')
groups=()
depends=()
makedepends=()
provides=()
conflicts=('libsodium-git')
replaces=()
backup=()
options=()
install=
source=("http://download.dnscrypt.org/${pkgname}/releases/${pkgname}-${pkgver}.tar.gz")

noextract=()
sha256sums=('65756c7832950401cc0e6ee0e99b165974244e749f40f33d465f56447bae8ce3')

build() {
  cd "$srcdir/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make && make check
  make DESTDIR="$pkgdir/" install
}


