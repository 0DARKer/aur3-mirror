# Maintainer: namelessjon <jonathan.stott@gmail.com>
pkgname=libsodium
pkgver=0.4.2
pkgrel=1
pkgdesc="P(ortable|ackageable) NaCl, the Networking and Cryptography library"
arch=('i686' 'x86_64')
url="https://github.com/jedisct1/libsodium"
license=('Public Domain')
groups=()
depends=()
makedepends=()
provides=()
conflicts=('libsodium-git')
replaces=()
backup=()
options=()
install=
source=("http://download.dnscrypt.org/${pkgname}/releases/${pkgname}-${pkgver}.tar.gz")

noextract=()
sha256sums=('1a7901cdd127471724e854a8eb478247dc0ca67be549345c75fc6f2d4e05ed39')

build() {
  cd "$srcdir/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make && make check
  make DESTDIR="$pkgdir/" install
}


