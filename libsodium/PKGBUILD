# Maintainer: namelessjon <jonathan.stott@gmail.com>
pkgname=libsodium
pkgver=0.1
pkgrel=1
pkgdesc="P(ortable|ackageable) NaCl, the Networking and Cryptography library"
arch=('i686' 'x86_64')
url="https://github.com/jedisct1/libsodium"
license=('Public Domain')
groups=()
depends=()
makedepends=()
provides=()
conflicts=('libsodium-git')
replaces=()
backup=()
options=()
install=
source=("http://download.dnscrypt.org/${pkgname}/releases/${pkgname}-${pkgver}.tar.gz")

noextract=()
sha256sums=('8e56bbc0dafe05f9211c198a2f1c7195ebdf39dca5d754fddb4eb617411bcf7b')

build() {
  cd "$srcdir/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make && make check
  make DESTDIR="$pkgdir/" install
}


