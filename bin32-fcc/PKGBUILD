# Maintainer: Jonathan Wiersma <archaur at jonw dot org>
_pkgname32=fcc
pkgname=bin32-fcc
pkgver=10.009
pkgrel=2
pkgdesc="FirstClass Client Groupware Client"
arch=('x86_64')
url='http://www.firstclass.com/Divisions/FAV13-0024FC95/?Plugin=FC&OpenItemURL=S047C50E4'
license="unknown"
install="fcc.install"
depends=('lib32-qt3' 'lib32-libart-lgpl' 'lib32-libpng12' 'lib32-libjpeg6' 'qt3')
options=('emptydirs')
source=(
	"$_pkgname32-command"
	"$_pkgname32-wrapper"
	"$_pkgname32.desktop.patch"
	"http://www3.firstclass.com/ClientDownloads/FC100ClientDownloadFiles/$_pkgname32-"${pkgver}"-Linux.i686.tar.bz2"
)
md5sums=(
	'4f2751d4964b81648344f49f13989371'
	'52505d7ece211530141bb2e26f73d02b'
	'86e6271a337b36c4cf5be5af1d48281a'
	'de1b5fe0e81b68ef2da4b5fce08c5f61'
)

build() {
	patch $srcdir/usr/share/applications/fcc.desktop $srcdir/fcc.desktop.patch || return 1
	
	cd $srcdir || return 1
	find usr opt -type d -exec install -dm755 $pkgdir/{} \; || return 1
	find usr opt -type f -exec install -Dm644 {} \
		$pkgdir/{} \; || return 1
	
	install -m755 $srcdir/opt/firstclass/fcc \
		$srcdir/fcc-wrapper \
		$pkgdir/opt/firstclass \
		 || return 1
	
	#install -d usr/share/applications/fcc.desktop 
	install -d $pkgdir/usr/bin || return 1
	#install -m644 $srcdir/usr/share/applications/fcc.desktop \
	#	$pkgdir/usr/share/applications/fcc.desktop \
	#	|| return 1
	install -Tm755 $srcdir/fcc-command $pkgdir/usr/bin/fcc || return 1
}
