# Contributor: Byron Clark <byron@theclarkfamily.name>
pkgname=auto-disper-git
pkgver=20100517
pkgrel=1
pkgdesc="Manage profiles from disper"
url="http://github.com/wertarbyte/auto-disper"
license=('')
arch=('any')
depends=('disper')
makdepends=('git')

_gitroot="http://github.com/wertarbyte/auto-disper.git"
_gitname=auto-disper
         
build() {
  cd $srcdir
  
  if [ -d $_gitname ]; then
    cd $_gitname && git pull origin
  else
    git clone $_gitroot $_gitname
  fi

  install -D -m 0755 $srcdir/$_gitname/auto-disper $pkgdir/usr/bin/auto-disper
}
# vim: set ft=sh ts=2 sw=2 et:
