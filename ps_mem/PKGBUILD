pkgname=ps_mem
pkgver=2.3
pkgrel=1
pkgdesc="List processes by memory usage"
arch=(any)
url="http://www.pixelbeat.org/scripts/"
license=('GPL')
depends=('python2')
source=('https://github.com/pixelb/scripts/raw/862f54858ca706ec77c1c9ef7f8324681ef0238e/scripts/ps_mem.py')
md5sums=('ef2a8bb2bf5468a6a823982dc61f5745')

build() {
  cd "$srcdir"
  sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|' ps_mem.py
  install -Dm755 ps_mem.py "$pkgdir/usr/bin/$pkgname"
}

