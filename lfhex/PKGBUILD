# $Id: PKGBUILD 48231 2009-08-20 17:00:49Z tpowa $
# Maintainer : zlbgps<zlbgps@gmail.com>

pkgname=lfhex
pkgver=0.42
#_kernver='2.6.30-ARCH'
pkgrel=0
pkgdesc="A fast, efficient hex-editor with support for large files and comparing binary files"

arch=('i686' 'x86_64')
[ "$CARCH" = "i686"   ] && ARCH=x86
[ "$CARCH" = "x86_64" ] && ARCH=x86_64

url="http://stoopidsimple.com/lfhex"

depends=("libxt" "qt"  "flex" "bison")

license=('GPL-2')
source=("http://stoopidsimple.com/files/${pkgname}-${pkgver}.tar.gz")
md5sums=("419ddac5a9e88beee872f53360193028")

build() {
    cd "${srcdir}/${pkgname}-${pkgver}/src"
    echo "${srcdir}/${pkgname}-${pkgver}/src"
    qmake
    make || return 1
    #make DESTDIR="${pkgdir}" install || return 1
    install -D -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
    install -d -m644 ${pkgdir}/usr/share/${pkgname}/
    install -D -m644 ../README ${pkgdir}/usr/share/${pkgname}/
}
