# Maintainer: Ray Griffin <rorgoroth@googlemail.com>

pkgname=coverlovin
_pkgname=CoverLovin
pkgtrunk=1.03
pkgver=1.0.3
pkgrel=1
pkgdesc="CLI recursive directory album art downloader written in Python"
arch=('any')
url="https://launchpad.net/coverlovin"
license=('GPL3')
depends=('python2')
source=("https://launchpad.net/coverlovin/trunk/$pkgtrunk/+download/coverlovin_$pkgver.tar" 'coverlovin')
md5sums=('136e66039262dc23e9223c5404440e5e' '45c12d66f0a79c0dafbfd3567d1538b9')

build() {
cd $srcdir/
install -d $pkgdir/opt/coverlovin/
install -d $pkgdir/usr/bin
install *.py $pkgdir/opt/coverlovin
install -m755 coverlovin $pkgdir/usr/bin/
}
