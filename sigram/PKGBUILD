pkgname=sigram
pkgver=0.5.3
pkgrel=1
pkgdesc="A different telegram client from Sialan.labs"
arch=('i686' 'x86_64')
url="http://labs.sialan.org/projects/sigram"
license=('GPL')
depends=('qt5-base' 'qt5-declarative')
makedepends=('git')
if [[ $CARCH == x86_64 ]]; then
  source=("http://dl.labs.sialan.org/sigram_0.5.3-x64.tar.xz")
  sha512sums=('7455ea714ce2a03f9adb92efff6e28b4a0370b3525219523eb9d7734c1d0491f511ff495fc5dba78183af5558f28f8325c781e4c7815c10c7745f1be5228cb51')
else
  source=("http://dl.labs.sialan.org/sigram_0.5.3-x32.tar.xz")
  sha512sums=('752e51a043ba16d670e96278b4cb9cb408b55a815b065db689cced3c3b3e4598f80f6e930df6865bd7d294a36acea5ab48b192eb628a159225d7334e170a920d')
fi

package() {
  cd $srcdir

  install -d $pkgdir/{opt,usr/bin}
  mv $pkgname $pkgdir/opt/sigram

  ln -s /opt/sigram/Sigram $pkgdir/usr/bin/sigram
}