# Contributor: Benoit Favre

pkgname=crfpp
pkgver=0.54
pkgrel=2
pkgdesc="A Conditional Random Field implementation"
url="http://crfpp.sourceforge.net"
arch=(x86_64 i686)
license=(LGPL BSD)
source=(http://prdownloads.sourceforge.net/sourceforge/crfpp/CRF++-$pkgver.tar.gz
        headers.patch)

build() {
  cd $startdir/src/CRF++-$pkgver
  patch -p2 < ../headers.patch
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('a3c12c99b25e06d18147d50f0f92e8d3'
         'ff4d7aa24c19e75963fd51edf07a3567')
