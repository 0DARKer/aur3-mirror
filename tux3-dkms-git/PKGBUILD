# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=tux3-dkms-git
pkgver=0.r1862.gd5e8a10
pkgrel=3
pkgdesc="tux3 file system module - git checkut"
arch=('any')
url="http://www.tux3.org/"
license=('GPL')
depends=('linux-headers' 'dkms')
makedepends=('git')
provides=('tux3-dkms')
conflicts=('tux3-dkms')
install=tux3-dkms.install
source=('git+https://github.com/OGAWAHirofumi/tux3#branch=hirofumi'
	'dkms.conf')

pkgver() {
	cd tux3/

	if GITTAG="$(git describe --abbrev=0 --tags 2>/dev/null)"; then
		echo "$(sed -e "s/^${pkgname%%-git}//" -e 's/^[-_/a-zA-Z]\+//' -e 's/[-_+]/./g' <<< ${GITTAG}).r$(git rev-list --count ${GITTAG}..).g$(git log -1 --format="%h")"
	else
		echo "0.r$(git rev-list --count master).g$(git log -1 --format="%h")"
	fi
}

package() {
	cd tux3/user/

	mkdir -p ${pkgdir}/usr/src/
	cp -a kernel/ ${pkgdir}/usr/src/tux3-${pkgver}/

	sed "s/%VERSION%/${pkgver}/" < ${srcdir}/dkms.conf > ${pkgdir}/usr/src/tux3-${pkgver}/dkms.conf
}

sha256sums=('SKIP'
            'e1f58607cc5a38546741a4d0000a1e495e700ed39a28d9608862331440149b85')
