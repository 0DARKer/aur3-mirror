# Maintainer: Samuel Tardieu <sam@rfc1149.net>
pkgname=geneweb
pkgver=5.02
pkgrel=2
pkgdesc="Genealogy Software"
arch=('i686' 'x86_64')
url="http://www.geneweb.org/"
license=('GPL')
groups=()
depends=('glibc')
makedepends=('ocaml' 'camlp5')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://www.geneweb.org/ftp/Src/$pkgname-$pkgver.tgz http://www.geneweb.org/ftp/Src/patch-5.02-1)
noextract=()
md5sums=('e8c6c789a9dd2f9155bf6eefa8786d01'
         '1449b74ed99c2d5130d9c074c3bba578')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 -i ../patch-5.02-1

  ./configure
  make PREFIX=/usr -j1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make PREFIX="$pkgdir/usr" MANDIR="$pkgdir/usr/share/man/man1" \
    DOCDIR="$pkgdir/usr/share/doc/geneweb" install
}

# vim:set ts=2 sw=2 et:
