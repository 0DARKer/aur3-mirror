# Maintainer: Samuel Tardieu <sam@rfc1149.net>
pkgname=geneweb
pkgver=5.02
pkgrel=1
pkgdesc="Genealogy Software"
arch=('i686' 'x86_64')
url="http://www.geneweb.org/"
license=('GPL')
groups=()
depends=('glibc')
makedepends=('ocaml' 'camlp5')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://www.geneweb.org/ftp/Src/$pkgname-$pkgver.tgz)
noextract=()
md5sums=('e8c6c789a9dd2f9155bf6eefa8786d01')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure
  make PREFIX=/usr
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make PREFIX="$pkgdir/usr" MANDIR="$pkgdir/usr/share/man/man1" \
    DOCDIR="$pkgdir/usr/share/doc/geneweb" install
}

# vim:set ts=2 sw=2 et:
