# Maintainer: Samuel Tardieu <sam@rfc1149.net>
pkgname=geneweb
pkgver=6.03
pkgrel=1
pkgdesc="Genealogy Software"
arch=('i686' 'x86_64')
url="http://www.geneweb.org/"
license=('GPL')
groups=()
depends=('glibc')
makedepends=('ocaml' 'camlp5')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!makeflags)
install=
changelog=
source=(http://opensource.geneanet.org/attachments/download/131/gw-6.03-src.tgz)
noextract=()
md5sums=('bcb04460c5c3bde7bccafe8a9aa4133a')

build() {
  cd "$srcdir"/distrib-*

  ./configure
  make PREFIX=/usr
}

package() {
  cd "$srcdir"/distrib-*

  make PREFIX="$pkgdir/usr" MANDIR="$pkgdir/usr/share/man/man1" \
    DOCDIR="$pkgdir/usr/share/doc/geneweb" install
}

