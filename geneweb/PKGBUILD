# Maintainer: Samuel Tardieu <sam@rfc1149.net>
pkgname=geneweb
pkgver=6.05
pkgrel=1
pkgdesc="Genealogy Software"
arch=('i686' 'x86_64')
url="http://www.geneweb.org/"
license=('GPL')
groups=()
depends=('glibc')
makedepends=('ocaml' 'camlp5')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!makeflags)
install=
changelog=
source=(http://opensource.geneanet.org/attachments/download/190/gw-6.05-src.tgz)
noextract=()
md5sums=('e62cf3c51d287f70f9c66847a83a55a8')

build() {
  cd "$srcdir"/gw-${pkgver}-src

  ./configure
  make PREFIX=/usr
}

package() {
  cd "$srcdir"/gw-${pkgver}-src

  make PREFIX="$pkgdir/usr" MANDIR="$pkgdir/usr/share/man/man1" \
    DOCDIR="$pkgdir/usr/share/doc/geneweb" install
}

# vim:set ts=2 sw=2 et:
