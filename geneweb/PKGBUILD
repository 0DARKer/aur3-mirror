# Maintainer: Samuel Tardieu <sam@rfc1149.net>
pkgname=geneweb
pkgver=6.06
pkgrel=1
pkgdesc="Genealogy Software"
arch=('i686' 'x86_64')
url="http://www.geneweb.org/"
license=('GPL')
groups=()
depends=('glibc' 'lablgtk2')
makedepends=('ocaml' 'camlp5')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!makeflags)
install=
changelog=
source=(http://opensource.geneanet.org/attachments/download/211/gw-6.06-src.tgz)
noextract=()
md5sums=('803627a3eeaa67bc147a7511bf257fc0')

build() {
  cd "$srcdir"/gw-${pkgver}-src

  ./configure
  make PREFIX=/usr
}

package() {
  cd "$srcdir"/gw-${pkgver}-src

  make PREFIX="$pkgdir/usr" MANDIR="$pkgdir/usr/share/man/man1" \
    DOCDIR="$pkgdir/usr/share/doc/geneweb" install
}

# vim:set ts=2 sw=2 et:
