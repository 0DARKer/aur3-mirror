# Maintainer: Dominik Fuchs <dominik.fuchs@wur.nl>
# Contributor: Marcelo Avalos Tejeda <marcelo.avalos@gmail.com>
pkgname=saga-gis
pkgver=2.0.4
pkgrel=2
pkgdesc="SAGA -System for Automated Geoscientific Analyses- is a hybrid GIS software"
url="http://www.saga-gis.org"
license="GPL"
arch=('i686' 'x86_64')
depends=('wxgtk>=2.8.3' 'gdal>=1.7' 'libproj4' 'libtiff' 'libjpeg' 'freetype2>=2.3')
source=(http://downloads.sourceforge.net/project/saga-gis/SAGA%20-%202.0/SAGA%202.0.4/saga_2.0.4_src_linux.tar.gz
	saga-gis.png
	saga-gis.desktop)
md5sums=('2f91cd0eb0c807de6e6e1f706d4b10ce'
         'f211cbdb2c9feb3dec254a7755f9f154'
         '5bce110e080c450de237635c5c651f54')

build() {
  mkdir -p $startdir/pkg/usr/share/applications $startdir/pkg/usr/share/pixmaps $startdir/pkg/usr/local/lib
  cd $startdir/src/saga-2.0
  ./configure --enable-unicode --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  install -D -m644 $startdir/saga-gis.png $startdir/pkg/usr/share/pixmaps/saga-gis.png
  install -D -m644 $startdir/saga-gis.desktop $startdir/pkg/usr/share/applications/saga-gis.desktop
}
