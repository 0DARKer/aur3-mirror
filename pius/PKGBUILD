# Maintainer: Stefan J. Betz <info@stefan-betz.net>
pkgname='pius'
pkgver='2.0.8'
pkgrel=2
pkgdesc='PGP Individual UID Signer (PIUS)'
arch=('any')
url='http://www.phildev.net/pius/'
license=('GPL2')
depends=('python2')
optdepends=('python-pexpect: interactive mode support')
source=(http://downloads.sourceforge.net/pgpius/$pkgname-$pkgver.tar.bz2
	python2.patch)
md5sums=('1025938c78fd284d80a2ebcaae483ede'
         '5734c74de92bdc5e17fc25edb914794e')

build(){
	patch $srcdir/$pkgname-$pkgver/pius python2.patch
	install -D $srcdir/$pkgname-$pkgver/pius $pkgdir/usr/bin/pius
}
