# Maintainer: dieghen89 <dieghen89@gmail.com>

pkgname="veetle"
pkgver="0.9.17"
pkgrel=6
pkgdesc="Wildly popular live video application created by a couple of Stanford students."
url="http://www.veetle.com/"
license=('Custom')
arch=('i686' 'x86_64')
install=veetle.install
source=("http://veetle.com/download/veetle-${pkgver}.tgz")
md5sums=('ba307af10d770628a5e20951ad3f0bd3')

build() {
cd $srcdir/$pkgname-$pkgver
install -D -m 755 libveetle-broadcast-plugin.so $pkgdir/usr/lib/mozilla/plugins/libveetle-broadcast-plugin.so
install -D -m 755 libveetle-core-plugin.so $pkgdir/usr/lib/mozilla/plugins/libveetle-core-plugin.so
install -D -m 755 libveetle-player-plugin.so $pkgdir/usr/lib/mozilla/plugins/libveetle-player-plugin.so
install -D -m 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
install -D -m 755 vlc $pkgdir/usr/share/veetle/vlc/vlc
install -D -m 755 vlc_encoder $pkgdir/usr/share/veetle/vlc/vlc_encoder
for i in `ls -l $srcdir/$pkgname-$pkgver/encoder_plugins | awk '{print $9}'` ; do
  echo "$i"
  install -D -m 755 encoder_plugins/$i $pkgdir/usr/share/veetle/vlc/encoder_plugins/$i || return 1
done
}
