# Maintainer: Kovivchak Evgen <oneonfire@gmail.com> 

pkgname=bzip
pkgver=0.21
pkgrel=1
pkgdesc="A block-sorting file compressor"
arch=('i686' 'x86_64')
license=('GPL')
url="http://archlinux.org"
depends=('glibc')
source=($pkgname-$pkgver.tar.gz)
md5sums=('03a7fe24ced5ac4401a32092409c78be')

build() {
  cd $srcdir/$pkgname-$pkgver
  make || return 1
  install -Dm755 bzip $pkgdir/usr/bin/bzip || return 1
  ln -s $pkgdir/usr/bin/bzip $pkgdir/usr/bin/bunzip || return 1
  install -Dm644 bzip.1 $pkgdir/usr/share/man/man1/bzip.1
  install -Dm644 $srcdir/${pkgname}-${pkgver}/LICENSE \
                 $pkgdir/usr/share/licenses/${pkgname}/LICENSE
}

