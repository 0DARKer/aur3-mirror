# Maintainer: majia321 < majia321@gmail.com >

pkgname=input-pad
pkgver=0.1.2
pkgrel=1
pkgdesc="The input pad is a tool to send a character on button to text applications."
arch=('i686' 'x86_64')
url="http://http://code.google.com/p/input-pad/"
license=('LGPL')
depends=('gtk2')
makedepends=('python2' 'swig' 'libxklavier')
source=(http://input-pad.googlecode.com/files/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --enable-nls
  make || return 1
  make DESTDIR=${pkgdir} install
}
md5sums=('4fdf86ca1485a5eb8e18c213f8a9b1aa')
