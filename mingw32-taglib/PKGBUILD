# Maintainer: DsTr <kostindima@gmail.com>

pkgname=mingw32-taglib
pkgver=1.5
pkgrel=2
arch=(i686 x86_64)
pkgdesc="Taglib for mingw"
license=('GPL')
makedepends=(mingw32-gcc)
url="http://developer.kde.org/~wheeler/taglib.html"
source=(http://ftp.musicbrainz.org/pub/musicbrainz/users/luks/taglib/taglib-1.5-mingw-bin.zip)
md5sums=('868c54b41ab966a1c31e85bac043b681')

build()
{
  cd $startdir/src/taglib-*

  mkdir -p $startdir/pkg/usr/i486-mingw32

  cp -R {lib,include} $startdir/pkg/usr/i486-mingw32/
    find $startdir/pkg/usr/i486-mingw32/ -type f -exec chmod 644 {} \;
    find $startdir/pkg/usr/i486-mingw32/ -type d -exec chmod 755 {} \;
}

