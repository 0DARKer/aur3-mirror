pkgname=raul-svn
pkgver=2189
pkgrel=2
pkgdesc="C++ utility library primarily aimed at audio/music applications"
url="http://drobilla.net/software/raul/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('boost' 'glibmm>=2.14.0')
optdepends=()
makedepends=('subversion' 'gcc')
provides=('raul=0.5.1-4')
conflicts=('raul')

source=()
md5sums=()

_svnmod="raul"
_svntrunk="http://svn.drobilla.net/lad/trunk"

build() {
	cd "${srcdir}"
	
	msg "Connecting to the $_svnmod SVN server..."
	svn co $_svntrunk $_svnmod -r $pkgver || return 1
#we need the entire svn tree because of "waf"
	cd "${srcdir}/$_svnmod/$_svnmod"

	./waf configure --prefix=/usr || return 1
	./waf || return 1
	DESTDIR=${pkgdir} ./waf install
}
