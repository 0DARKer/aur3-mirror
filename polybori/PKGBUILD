# Maintainer: RÃ©my Oudompheng <oudomphe@clipper.ens.fr>
pkgname=polybori
pkgver=0.5
pkgrel=2
pkgdesc="Library for polynomials over boolean rings"
arch=('i686' 'x86_64')
url="http://polybori.sourceforge.net/"
license=('GPL')
depends=('python' 'boost' 'm4ri' 'ipython')
makedepends=('scons') # 'hevea')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-0.5.tar.gz
        custom.py)
md5sums=('0c4af11b90b69d0dac4f008b940d7518'
         '20e5df185f00bf4387d9e23955a970f2')
         
build() {
  cd "$startdir/src/polybori-0.5"
  cp -f ../custom.py .
 
  export pkgdir
  export PYTHONSITE=/usr/lib/python2.6/site-packages
  scons $MAKEFLAGS prepare-devel || return 1
  scons devel-install || return 1
  scons install || return 1

  find ${pkgdir}/usr/include -name '*.h' -exec chmod 644 {} +
  find ${pkgdir}/usr/include -name '*.hh' -exec chmod 644 {} +
}

