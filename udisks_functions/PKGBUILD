pkgname=udisks_functions
pkgver=1d2ac3
pkgrel=1
pkgdesc="udisks' functions and aliases for Bash."
arch=('any')
url="https://gist.github.com/838039"
license=('GPL')
depends=('bash' 'udisks')
install='udisks_functions.install'
source=("https://raw.github.com/gist/838039/4112801b1bd983395c0fd74fd66e2c0768bd8d3c/udisks_functions")
md5sums=('631af7bdadaa600ee6653724a98801de')

package() {
  install -D -m644 ${srcdir}/${pkgname} ${pkgdir}/etc/${pkgname}/${pkgname}
}

