# Contributor: Dongsheng Cai <imdongsheng@gmail.com>
pkgname=gthumb-git
pkgver=3.2.0
pkgrel=1
pkgdesc="Image viewer and browser for the GNOME Desktop"
arch=('i686' 'x86_64')
url="http://live.gnome.org/gthumb/"
license=('GPL')
conflicts=('gthumb')
depends=('gnome-doc-utils' 'libgnomeui' 'libxtst' 'intltool' 'gcc' 'coreutils' 'gnome-common' 'yelp-tools')

_gitname='gthumb'

build() {
    cd ${srcdir}
    if [ -d $_gitname ]; then
        cd $_gitname
        msg "Updating local files from Git"
        git pull . master
    else
        msg "Cloning Git repository"
        git clone git://git.gnome.org/gthumb
    fi
    cd ${srcdir}/${_gitname}
    ./autogen.sh --prefix=/usr CFLAG="-ggdb" || return 1
    make || return 1
    make DESTDIR="$pkgdir" install || return 1
    cd ${srcdir}/${_gitname}
    install -D -m644 $srcdir/gthumb/data/icons/hicolor/48x48/apps/gthumb.png $pkgdir/usr/share/pixmaps/gthumb.png
}
