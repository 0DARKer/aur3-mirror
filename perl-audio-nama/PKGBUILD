depends=('perl-anyevent>=5.0' 'perl-anyevent-termkey' 'perl-data-dumper-concise' 'perl-data-section-simple' 'perl-event' 'perl-file-copy-link' 'perl-file-find-rule' 'perl-file-homedir' 'perl-file-slurp' 'perl-git-repository' 'perl-graph' 'perl-json-xs' 'perl-list-moreutils' 'perl-log-log4perl' 'perl-modern-perl' 'perl-parse-recdescent' 'perl-super' 'perl-term-readline-gnu' 'perl-text-diff' 'perl-text-format' 'perl-text-template' 'perl-try-tiny' 'perl-yaml-tiny' 'perl' 'ecasound' 'ladspa' 'perl-tk' 'git')
makedepends=()
