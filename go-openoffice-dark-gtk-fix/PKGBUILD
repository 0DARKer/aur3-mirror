pkgname=go-openoffice-dark-gtk-fix
pkgver=0.1
pkgrel=1
pkgdesc="This fixes Go-oo's appearance and behavior in dark GTK themes. USE AT OWN RISK!"
arch=('i686' 'x86_64')
url="http://www.rebelzero.com/fixes/openofficeorg-dark-theme-workaround-with-ubuntu-804"
