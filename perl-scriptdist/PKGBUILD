# Created: 30/10/2011
pkgname=perl-scriptdist
_pkgname=scriptdist
pkgver=0.15
pkgrel=1
pkgdesc=''
arch=('any')
url='http://search.cpan.org/~bdfoy/scriptdist/'
license=('GPL' 'PerlArtistic')
groups=()
depends=('perl')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/$_pkgname-$pkgver.tar.gz")
noextract=()

build(){
  cd "$srcdir/$_pkgname-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make || return 1
  make test || return 1
}
package(){
  cd "$srcdir/$_pkgname-$pkgver"
  make install DESTDIR="$pkgdir/" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# vim:set ts=2 sw=2 et ft=sh tw=100:

md5sums=('952053c6243602da4adadf9fa31c5877')
