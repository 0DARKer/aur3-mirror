# Contributor: Christian Sturm <reezer@reezer.org>
pkgname=perl-http-parser-xs
pkgver=0.07
pkgrel=1
pkgdesc="fast, primitive HTTP request parser"
arch=('any')
url="http://search.cpan.org/dist/HTTP-Parser-XS/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/K/KA/KAZUHO/HTTP-Parser-XS-$pkgver.tar.gz)
md5sums=('890711d599f036fe613b3c8589000a10')

build() {
  cd "$srcdir/HTTP-Parser-XS-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1
}

