# Maintainer: John McKnight <jmcknight@gmail.com>

pkgname=monkey-bubble
pkgver=0.4.0
pkgrel=1
pkgdesc="A Puzzle Bobble clone"
arch=(i686)
url="http://home.gna.org/monkeybubble/"
depends=('libgnomeui' 'librsvg' 'gstreamer0.10')
source=(http://home.gna.org/monkeybubble/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('0de8a05c8c15e08326d244534dc30f22')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure \
		--prefix=/opt/gnome \
		--disable-schemas-install \
		--disable-scrollkeeper
	make || return 1
	make DESTDIR=$startdir/pkg install
	rm -rf $startdir/pkg/var
}
