pkgname=audacious-gtk2
_pkgalias=audacious
pkgver=3.0
pkgrel=1
pkgdesc='Lightweight, GTK-based advanced audio player focused on audio quality'
arch=('i686' 'x86_64')
url='http://audacious-media-player.org/'
license=('GPL3')
depends=('gtk2' 'libmcs' 'dbus-glib' 'libguess' 'libsm' 'audacious-plugins' 'desktop-file-utils' 'hicolor-icon-theme')
optdepends=('unzip: zipped skins support')
conflicts=('audacious')
install=${_pkgalias}.install
source=("http://distfiles.atheme.org/${_pkgalias}-${pkgver}.tar.gz" 'dbus.patch')
md5sums=('8e05ccabeb110423bdfc6fc4a126c99e'
         '77be3533e0d0ecfcbcb36d87a739c502')

build()
{
    cd "${srcdir}/${_pkgalias}-${pkgver}"
    [[ ${CARCH} == x86_64 ]] && extraopts='' || extraopts='--disable-sse2'
    patch -Np1 -i $srcdir/dbus.patch
    ./configure --prefix=/usr ${extraopts} --disable-gtk3
    make
}

package()
{
    cd "${srcdir}/${_pkgalias}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}
