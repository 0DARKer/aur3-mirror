# Contributor: max.bra <max.bra at alice dot it>
# Maintainer: max.bra <max.bra at alice dot it>

pkgname=ooo-thumbnailer-unofficial
pkgrealname=ooo-thumbnailer
pkgver=0.4.1
pkgrel=1
pkgdesc="This utility provides thumbnails for OpenOffice.org and Microsoft Office documents, presentations, spreadsheets, templates and drawings. Install it and restart Nautilus to see the effects."
arch=('any')
url="https://launchpad.net/ooo-thumbnailer"
license=('GPL')
depends=('imagemagick' 'xdg-user-dirs' 'libgsf-gnome' 'unoconv')
makedepends=()
optdepends=()
provides=('ooo-thumbnailer')
conflicts=('ooo-thumbnailer')
install=$pkgname.install
source=(ooo-thumbnailer_bzr_source_test_dir_deleted.tar.gz)
md5sums=('28b23214480e93763585dceed9a2a834')

build() {
    sed -i 's/openofficeorg3-oasis-/oasis-/' "${srcdir}"/${pkgrealname}/${pkgrealname}
}

package() {
    install -D -m755 "${srcdir}"/${pkgrealname}/${pkgrealname} "${pkgdir}"/usr/bin/${pkgrealname}
    install -D -m755 "${srcdir}"/${pkgrealname}/${pkgrealname}-config "${pkgdir}"/usr/bin/${pkgrealname}-config
    install -D -m644 "${srcdir}"/${pkgrealname}/${pkgrealname}.schemas "${pkgdir}"/usr/share/gconf/schemas/${pkgrealname}.schemas
}

