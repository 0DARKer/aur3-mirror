pkgname=qualimap
pkgver=2.0
pkgrel=2
pkgdesc="Platform independent tool to facilitate the quality control of genomic sequencing data."
arch=('any')
url="http://qualimap.bioinfo.cipf.es/"
license=('GPL')
depends=('jre7-openjdk' 'sh' 'r')
source=("http://qualimap.bioinfo.cipf.es/release/qualimap_v$pkgver.zip")
md5sums=('41a746aac0b5ab4a9af999874ed0c355')


package() {
  #Creating folders required
  install -dm755 "${pkgdir}/opt/${pkgname}"
  install -dm755 "${pkgdir}/usr/bin/"
  cp -rv $srcdir/$pkgname\_v$pkgver ${pkgdir}/opt/$pkgname
  ln -s ${pkgdir}/opt/$pkgname/$pkgname\_v$pkgver/$pkgname ${pkgdir}/usr/bin/$pkgname
  chmod +x ${pkgdir}/usr/bin/$pkgname
  msg "Execute this to get the R dependencies installed: Rscript /opt/${pkgname}/${pkgname}\_v${pkgver}/scripts/installDependencies.r"
}

