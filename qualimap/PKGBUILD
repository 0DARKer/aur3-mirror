pkgname=qualimap
pkgver=2.0
pkgrel=2
pkgdesc="Platform independent tool to facilitate the quality control of genomic sequencing data."
arch=('any')
url="http://qualimap.bioinfo.cipf.es/"
license=('GPL')
depends=('java-environment' 'sh' 'r')
source=("http://qualimap.bioinfo.cipf.es/release/qualimap_v$pkgver.zip")
md5sums=('41a746aac0b5ab4a9af999874ed0c355')

package() {
  mkdir -p /opt/$pkgname
  mv $srcdir/$pkgname\_v$pkgver /opt/$pkgname
  ln -s /opt/$pkgname/$pkgname\_v$pkgver/$pkgname /usr/bin/$pkgname
  chmod +x /usr/bin/$pkgname
  Rscript /opt/$pkgname/$pkgname\_v$pkgver/scripts/installDependencies.r
}

