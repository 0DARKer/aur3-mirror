# Contributor: Allen Choong <allencch at hotmail dot com>

pkgname=cnijfilter-ip2200
pkgver=2.60
pkgrel=4
pkgdesc="Canon IJ Printer Driver for PIXMA iP2200 (compatible to iP1600)"
url="http://support-sg.canon-asia.com/contents/SG/EN/0900718701.html"
arch=('i686' 'x86_64')
license=('custom')
if [ "${CARCH}" = 'x86_64' ]; then
  depends=('lib32-libcups' 'lib32-popt' 'cnijfilter-common' 'lib32-gtk' 'lib32-glib')
elif [ "${CARCH}" = 'i686' ]; then
  depends=('libcups' 'popt' 'cnijfilter-common' 'gtk' 'glib' 'libtiff3' 'libxml')
fi
makedepends=('rpmextract')
source=(http://gdlp01.c-wss.com/gds/7/0900007187/01/$pkgname-$pkgver-2.i386.rpm)
md5sums=('f4112bdd717c2ecce9b999acdc50fa7e')

package(){
	mkdir -p $pkgdir/usr/share
	mkdir -p $pkgdir/usr/bin
if [ "${CARCH}" = 'x86_64' ]; then
	mkdir -p $pkgdir/usr/lib32/cups
elif [ "${CARCH}" = 'i686' ]; then
	mkdir -p $pkgdir/usr/lib/cups
fi

	mv -v $srcdir/usr/share/* $pkgdir/usr/share
	mv -v $srcdir/usr/local/* $pkgdir/usr/share
if [ "${CARCH}" = 'x86_64' ]; then
	mv -v $srcdir/usr/lib/* $pkgdir/usr/lib32/
elif [ "${CARCH}" = 'i686' ]; then
	mv -v $srcdir/usr/lib/* $pkgdir/usr/lib/
fi
}
