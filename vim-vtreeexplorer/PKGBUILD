# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-vtreeexplorer
pkgver=1.28
_scriptid=8097
pkgrel=1
pkgdesc="Tree based file explorer - the original"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=184"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.tar.gz::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('c728d236dc31c03acf5aaf2e8a05fad3'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/{doc,plugin}
    install -Dm755 ${srcdir}/doc/* ${pkgdir}/usr/share/vim/doc/ || return 1
    install -Dm755 ${srcdir}/plugin/* ${pkgdir}/usr/share/vim/plugin/ || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

