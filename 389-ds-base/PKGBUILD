# Maintainer: Sergio A. Morales <sergiomorales@archlinux.cl>
# Contributor: Sergio A. Morales <sergiomorales@archlinux.cl>
pkgname=389-ds-base
pkgver=1.2.5
pkgrel=4
pkgdesc="389 LDAP Directory Server Base"
arch=('i686' 'x86_64')
url="http://directory.fedoraproject.org/"
license=(GPL)
depends=('icu' 'mit-krb5' 'mozldap' 'net-snmp')
source=("http://directory.fedoraproject.org/sources/$pkgname-$pkgver.tar.bz2")
md5sums=("b6831fd96d28aade765dc8894ce68e45")

build() {
        cd $startdir/src/$pkgname-$pkgver
	[ "${CARCH}" == "x86_64" ] && export USE_64=1
	./configure --enable-autobind --prefix=/usr --sysconfdir=/etc  \
	 --with-kerberos-inc=/opt/mit-krb5/include --with-kerberos-lib=/opt/mit-krb5/lib \

	make || return 1
        make install DESTDIR=$pkgdir || return 1
	mv $pkgdir/etc/rc.d/init.d/dirsrv $pkgdir/etc/rc.d/dirsrv
	rm -rf $pkgdir/etc/rc.d/init.d
	chmod 775 $pkgdir/usr/lib/dirsrv
	chmod 775 $pkgdir/etc/dirsrv

}
