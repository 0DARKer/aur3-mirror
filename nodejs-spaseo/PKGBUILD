# Author: Filirom1 <filirom1@gmail.com>
# Maintainer: filirom1 <filirom1@gmail.com>
_npmname=spaseo
pkgname=nodejs-spaseo # All lowercase
pkgver=0.1.0
pkgrel=1
pkgdesc="Scrapp your Single Page Web Application (SPA) for Search Engine (SEO)."
arch=(any)
url="http://github.com/Filirom1/spaseo"
license=(MIT)
depends=(nodejs)
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(18f216fc02c20f6fe2997915343c37753a15ab05)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
