pkgname=cntlm
pkgver=0.92.3
pkgrel=1
license=('GPL2')
pkgdesc="An NTLM, NTLM2SR, and NTLMv2 authenticating HTTP proxy"
arch=('i686' 'x86_64')
url="http://cntlm.sourceforge.net"
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgname%20$pkgver/$pkgname-$pkgver.tar.gz"
	'cntlm.service'
	'cntlm.systemd')
backup=('etc/cntlm.conf')
md5sums=('0d7fcfbfbef0546306b896be246caa88'
         '8aa5c57c208371f86f465c9c8e0bce70'
	 'ec6eeebdae5c22ce6f8c5aaa611e3e83')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make \
		SYSCONFDIR="$pkgdir/etc" \
		BINDIR="$pkgdir/usr/bin" \
		MANDIR="$pkgdir/usr/share/man" \
		install
	install -Dm 755 "$srcdir/cntlm.service" "$pkgdir/etc/rc.d/cntlm"
	install -Dm 755 "$srcdir/cntlm.systemd" "$pkgdir/usr/lib/systemd/system/cntlm.service"
}
