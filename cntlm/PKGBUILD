pkgname=cntlm
pkgver=0.35.1
pkgrel=3
license=('GPLv2')
pkgdesc="An NTLM, NTLM2SR, and NTLMv2 authenticating HTTP proxy"
arch=('i686' 'x86_64')
url="http://cntlm.sourceforge.net"
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgname%20$pkgver/$pkgname-$pkgver.tar.gz" 'cntlm')
backup=("etc/cntlm.conf")
md5sums=('2547c73a1159062fdaa1877cc03a22f6'
         '8aa5c57c208371f86f465c9c8e0bce70')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make SYSCONFDIR="$pkgdir/etc" BINDIR="$pkgdir/usr/bin" MANDIR="$pkgdir/usr" install
	install -Dm 755 "$srcdir/cntlm" "$pkgdir/etc/rc.d/cntlm"
}

