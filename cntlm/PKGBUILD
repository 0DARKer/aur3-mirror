pkgname=cntlm
pkgver=0.35.1
pkgrel=2
license=('GPLv2')
pkgdesc="NTLM, NTLM2SR, NTLMv2 authenticating HTTP proxy"
arch=('i686')
url="http://cntlm.sourceforge.net"
license=('GPLv2')
backup=("/etc/cntlm.conf")
install=${pkgname}.install
source=(http://downloads.sourceforge.net/project/cntlm/cntlm/cntlm%200.35.1/cntlm-0.35.1.tar.gz)
md5sums=('2547c73a1159062fdaa1877cc03a22f6')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make SYSCONFDIR=$startdir/pkg/etc BINDIR=$startdir/pkg/usr/bin MANDIR=$startdir/pkg/usr install || return 1
}

