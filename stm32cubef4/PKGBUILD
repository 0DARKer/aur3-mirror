package() {
	install -d "$pkgdir"/opt/"$pkgname"
	mv STM32Cube_FW_F4_V1.3.0/* "$pkgdir"/opt/"$pkgname"/
	install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
