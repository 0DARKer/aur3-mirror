pkgname=naken_asm
pkgver=2013.04.19
pkgrel=1
pkgdesc="A raw, simple assembler supporting 65xx, ARM, dsPIC, MIPS, 8051/8052, and MSP430 instruction sets"
arch=('i686' 'x86_64' 'arm')
url="http://www.mikekohn.net/micro/naken_asm.php"
license=('GPL')
depends=('readline')
source=('http://downloads.mikekohn.net/naken_asm/naken_asm-2013-04-19.tar.gz')
md5sums=('9b44f6aaa7381de5f6506f26e0eeaee7')

build() {
  cd $srcdir/$pkgname-${pkgver//./-}
  #make clean
  ./configure --install-prefix='${DESTDIR}/usr'
  make
}

package() {
  cd $srcdir/$pkgname-${pkgver//./-}
  make DESTDIR="$pkgdir" install
}
