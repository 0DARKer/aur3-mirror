pkgname=naken_asm
pkgver=2013.04.06
pkgrel=1
pkgdesc="A raw, simple assembler supporting 65xx, ARM, dsPIC, MIPS, 8051/8052, and MSP430 instruction sets"
arch=('i686' 'x86_64' 'arm')
url="http://www.mikekohn.net/micro/naken_asm.php"
license=('GPL')
depends=('readline')
source=('http://downloads.mikekohn.net/naken_asm/naken_asm-2013-04-06.tar.gz' 'Makefile.patch')
md5sums=('c8747548f2dbc8cf3ff1492d3ba630db'
         'c675114c3890fa19be7b0b2a51f22b1f')

build() {
  cd $srcdir/$pkgname-${pkgver//./-}
  #make clean
  ./configure --install-prefix='${DESTDIR}/usr'
  patch -p0 < ../../Makefile.patch
  make
}

package() {
  cd $srcdir/$pkgname-${pkgver//./-}
  make DESTDIR="$pkgdir" install
}
