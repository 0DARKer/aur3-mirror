# Maintainer: Julien Morin <jmorin@cp.dias.ie>

pkgname=python-matplotlib-basemap
pkgver=1.0
pkgrel=2
pkgdesc="Matplotlib toolkit for plotting data on map projections"
arch=('i686' 'x86_64')
url="http://matplotlib.sourceforge.net/basemap/doc/html/"
license=('custom')
source=("http://downloads.sourceforge.net/project/matplotlib/matplotlib-toolkits/basemap-$pkgver/basemap-$pkgver.tar.gz")
depends=('python-matplotlib>=0.98' 'geos>=3.1.1' 'pyshapelib')
makedepends=('setuptools')
optdepends=('python-imaging: Python Imaging Library is only needed for bluemarble and warpimage methods.')
md5sums=('94c7d98db0b74d44b5d28a9dc3b4d952')

build() {
cd $srcdir/basemap-$pkgver
python2 setup.py install --root $startdir/pkg --prefix=/usr || return 1
# conflict with files from python-matplotlib
rm -f $pkgdir/usr/lib/python2.7/site-packages/mpl_toolkits/__init__.py*
}
