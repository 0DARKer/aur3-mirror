# Maintainer: Dejan ÄŒabrilo <dcabrilo@gmail.com>

pkgname=tdom
pkgver=0.8.2
pkgrel=1
pkgdesc="A fast XML/DOM/XPath package for Tcl written in C"
arch=('i686' 'x86_64')
url="http://www.tdom.org"
license=('MPL')
groups=('devel')
depends=('expat' 'tcl')
source=(http://www.tdom.org/files/tDOM-$pkgver.tgz)
md5sums=('67790846eb5ec13852a3bf3c382d86dc')

build() {
  cd $srcdir/tDOM-$pkgver
  if [ $CARCH = "x86_64" ] ; then
    ./configure --prefix=/usr --enable-64bit
  else
    ./configure --prefix=/usr
  fi
  make || return 1
  make DESTDIR=$pkgdir/ install
}
