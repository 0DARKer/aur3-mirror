# Maintainer: inteliboy <inteliboy@gmail.com>

pkgname=trinitycore2
pkgver=20120528
pkgrel=1
pkgdesc="Trinity Core MMo Server Framework"
arch=('i686' 'x86_64')
url="http://www.trinitycore.org"
license=('GPL')
depends=('mysql' 'libmysqlclient' 'mysql-clients' 'zlib' 'openssl')
makedepends=('git' 'cmake' 'ace>=5.8.2' 'libtool' 'patch' 'gcc' 'make' 'autoconf' 'automake' 'bin86' 'bison' 'ed' 'fakeroot' 'flex' 'm4' 'pkgconfig')
options=('!libtool')
source=()
md5sums=()

_gitroot=git://github.com/TrinityCore/TrinityCore
_gitname=master

build() 
{
	cd "$srcdir"
	msg "Conecting to GIT server..."

	if [ -d $_gitname ] ; then
		cd "$_gitname" $$ git pull origin
		msg "The local files are updated."
	else
		git clone "$_gitroot" "$_gitname"
	fi
	msg "GIT checkout done or server timeout."
	msg "Starting make."
# some cleanup
	rm -rf "$srcdir/build"
# prepare build dir
  	mkdir "$srcdir/build"
	cd ..
	git clone -l "$_gitname" "$srcdir/build"
  	cd "$srcdir/build"

# configure
  	cmake -DPREFIX=$pkgdir/usr -DCONF_DIR=$pkgdir/usr/etc -DSQL=1 || return 1
# build
  	make || return 1
  	make install
} 
