# Maintainer: RunningDroid <rningdrd AT tormail.net>

_pkgname=xf86-video-fbdev
pkgname=$_pkgname-git
pkgver=20130305
pkgrel=1
pkgdesc="X.Org fbdev video driver - Git version"
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/xorg/driver/$_pkgname/"
license=('custom')
depends=('glibc' 'xorg-server' 'mtdev')
makedepends=('xorg-server-devel' 'X-ABI-XINPUT_VERSION=18' 'resourceproto' 'scrnsaverproto' 'git' 'xorg-util-macros')
provides=("$_pkgname=99")
conflicts=("$_pkgname" 'xorg-server<1.13.0' 'X-ABI-XINPUT_VERSION<18' 'X-ABI-XINPUT_VERSION>=19')
options=('!libtool')
groups=('xorg-drivers' 'xorg')

# preparing for Pacman 4.1
#source=(git+https://anongit.freedesktop.org/xorg/driver/$_pkgname)

_gitroot=git://anongit.freedesktop.org/xorg/driver/$_pkgname
_gitname=$_pkgname

# still preparing for Pacman 4.1
#pkgver () {
#  cd "$srcdir/$_gitname"
#  echo "$(git shortlog | grep -c '\s\+').$(git describe --always)"
#}

build() {
  msg "Connecting to anongit.freedesktop.org GIT server...."

  if [ -d $_gitname ] ; then
     cd $_gitname && git pull origin && cd ..
     msg "The local files are updated."
  else
     git clone --depth 1 $_gitroot
  fi

  msg "GIT checkout done or server timeout"

  msg "Starting make..."
  cd $_gitname
  ./autogen.sh --prefix=/usr
  #./configure --prefix=/usr
  make
}

package(){
  cd $_gitname
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$_pkgname/COPYING"
}
