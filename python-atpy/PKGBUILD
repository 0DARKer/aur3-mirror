# Maintainer:  <clu>

pkgname=python-atpy  
_pkgname=ATpy
pkgver=0.9.4
pkgrel=1 
pkgdesc="ATpy is a high-level Python package providing a way to manipulate tables of astronomical data in a uniform way."
url="http://atpy.github.com/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('python2' 'python-vo' 'python-asciitable' 'python-h5py' 'mysql-python' 'pygresql')
makedepends=('python2')
conflicts=()
replaces=()
backup=()
#install=
source=(https://github.com/downloads/atpy/atpy/ATpy-${pkgver}.tar.gz)
md5sums=('487f86359e98400f1ec4d8fd3d5c85c6')

build() {
  cd $startdir/src/$_pkgname-$pkgver
  python2 setup.py install --prefix=$pkgdir/usr --optimize=1 || return 1
}
