# Maintainer:  <clu>

pkgname=python-atpy  
_pkgname=ATpy
pkgver=0.9.5.3
pkgrel=1
pkgdesc="A high-level Python package providing a way to manipulate tables of astronomical data in a uniform way."
url="http://atpy.github.com/"
arch=('any')
license=('MIT')
depends=('python2' 'python2-numpy>=1.3.0' 'python-vo>=0.5' 'python2-asciitable>=0.5.0' 'python2-h5py>=1.3.0' 'python-pyfits>=2.1.0')
makedepends=('python2' 'python2-distribute')
optdepends=('pygresql: for PostGreSQL tables'
  'mysql-python: for MySQL tables')
conflicts=()
replaces=()
backup=()
source=(https://github.com/downloads/atpy/atpy/ATpy-${pkgver}.tar.gz)
md5sums=('396f95233006777ea0fedffe70d1b870')

package() {
  cd $startdir/src/$_pkgname-$pkgver
  python2 setup.py install --prefix=/usr --root=${pkgdir} --optimize=1
}
