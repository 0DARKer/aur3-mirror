pkgname=gcc-arm-none-eabi-bin
_pkgname=gcc-arm-none-eabi
_pkgver_periods=4.8
_pkgver_date_dash=2014-q2-update
_pkgver_major=4_8
_pkgver_minor=2014q2-20140609
_pkgver_actual=$_pkgver_major-$_pkgver_minor
pkgver=4_8_20140609
pkgrel=1
pkgdesc="GNU Tools ARM Embedded Processors (binary distribution, includes GDB and newlib)"
arch=('i686' 'x86_64')
if [ "${CARCH}" = "x86_64" ]; then
    depends=('lib32-ncurses' 'lib32-glibc')
else
    depends=('ncurses' 'glibc')
fi
provides=('gcc-arm-none-eabi'
	  'arm-none-eabi-gcc'
	  'arm-none-eabi-gdb'
	  'arm-none-eabi-bintutils'
    )
conflicts=('gcc-arm-none-eabi'
	  'arm-none-eabi-gcc'
	  'arm-none-eabi-gdb'
	  'arm-none-eabi-bintutils'
    )
url="https://launchpad.net/gcc-arm-embedded"
source="https://launchpad.net/gcc-arm-embedded/$_pkgver_periods/$_pkgver_periods-$_pkgver_date_dash/+download/$_pkgname-$_pkgver_actual-linux.tar.bz2"
license=('custom')
options=(!strip staticlibs)
md5sums=('0f80c6d2684c8e2bece37a2de4e8963b')

package() {
 mkdir -p $pkgdir/usr
 cd $srcdir/gcc-*
 cp -a * $pkgdir/usr
}
