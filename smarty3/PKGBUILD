pkgname=smarty3
pkgver=3.1.1
pkgrel=1
pkgdesc='Smarty is a PHP template engine'
url='http://www.smarty.net'
license="LGPL"
depends=('php>=5.2')
arch=('i686' 'x86_64')
makedepends=()
conflicts=()
replaces=()
backup=()
source=(http://www.smarty.net/files/Smarty-$pkgver.tar.gz)

md5sums=('9202e54ef174dabf0973d98ee49cb63f')

build() {
  install -d $startdir/pkg/usr/share/php
  cp -r $startdir/src/Smarty-$pkgver $startdir/pkg/usr/share/php/smarty3
}


