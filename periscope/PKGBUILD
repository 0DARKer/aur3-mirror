# Contributor: Blaž Tomažič <blaz.tomazic@gmail.com>
pkgname=periscope
pkgver=0.1.14
pkgrel=3
pkgdesc="Subtitles searching CLI and module written in python that supports \
OpenSubtitles.org, SubtitleSource.org, Subtitulos.es, addic7ed.com, Podnapisi.net \
TheSubDB.com and BierDopje.com"
url="http://code.google.com/p/periscope/"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('beautiful-soup' 'unrar' 'python2')
makedepends=('setuptools')
conflicts=('periscope-svn')
source=("http://periscope.googlecode.com/files/${pkgname}-${pkgver}.tar.gz"
	"setup.py.patch")
md5sums=('e01cefa6b4aab86c63e884ca95362f03'
         '64f034d317a22dea6cdf21fba9250181')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	#version 0.1.14 fix
	patch setup.py ../setup.py.patch
	
	python2 ./setup.py build || return 1
}

package(){
	cd ${srcdir}/${pkgname}-${pkgver}

	python2 ./setup.py install --root=$pkgdir || return 1
}
