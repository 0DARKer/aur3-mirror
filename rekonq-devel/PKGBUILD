_pkgname=rekonq
pkgname=$_pkgname-devel
pkgver=0.8.71
pkgrel=1
pkgdesc='A WebKit based web browser for KDE - unstable development snapshot'
arch=('i686' 'x86_64')
url='http://rekonq.kde.org/'
license=('GPL')
depends=('kdebase-keditbookmarks')
makedepends=('cmake' 'automoc4' 'docbook-xsl')
provides=('rekonq')
conflicts=('rekonq' 'rekonq-git')
install=${_pkgname}.install
source=("http://downloads.sourceforge.net/${_pkgname}/${_pkgname}-${pkgver}.tar.bz2")
sha256sums=('47ae9f20d08ccd7c99133817a80c2cbaf9b2c5f0dbace041cc9c584433f45838')

build(){
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
