# Contributor: Michael Blum <michaeldblum@earthlink.net>
pkgname=xd
pkgver=1
pkgrel=1
pkgdesc="utility to dump files in hex, decimal, or octal"
url="http://www.fourmilab.ch/xd"
license=('GPL')
depends=()
makedepends=(gcc)
source=(xd.zip)
md5sums=('304184cb2bd79900c4750dcab481033a')

build() {
  cd $startdir/src/
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  cp xd $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/usr/man/man1
  cp xd.1 $startdir/pkg/usr/man/man1
}
