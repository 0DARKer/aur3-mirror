# Author: RetroX <classixretrox@gmail.com>
pkgname=mingw32-sfml
pkgver=1.6
pkgrel=2
pkgdesc="A simple, cross-platform API. (MinGW32 libraries)"
arch=(i686 x86_64)
license="GPL"
url="http://sfml-dev.org"
depends=('mingw32-gcc')
makedepends=('unzip')
source=(http://voxel.dl.sourceforge.net/project/sfml/sfml/1.6/SFML-$pkgver-dev-windows-mingw.zip)
md5sums=('d08f423dea6de6f4a1380d023e64ea14')

build() {
	cd $startdir
	unzip SFML-$pkgver-dev-windows-mingw.zip
	mkdir $startdir/pkg/usr
	mkdir $startdir/pkg/usr/i486-mingw32
	mkdir $startdir/pkg/usr/i486-mingw32/lib
	mkdir $startdir/pkg/usr/i486-mingw32/include
	cp -r  SFML-1.6/lib/* $startdir/pkg/usr/i486-mingw32/lib
	cp -r SFML-1.6/include/* $startdir/pkg/usr/i486-mingw32/include
	cp -r SFML-1.6/extlibs/bin/* $startdir/pkg/usr/i486-mingw32/lib
}
