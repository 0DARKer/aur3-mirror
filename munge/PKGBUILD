# Maintainer: Fredrik Tegenfeldt <fredrik.tegenfeldt@unige.ch>
pkgname=munge
pkgver=0.5.9
pkgrel=1
pkgdesc="Munge is an authentication service for creating and validating credentials. It is designed to be highly scalable for use in an HPC cluster environment."
arch=('i686' 'x86_64')
url="http://code.google.com/p/munge/"
license=('GPLv3+ and LGPLv3+')
groups=()
depends=()
makedepends=('openssl' 'bzip2' 'zlib')
optdepends=()
provides=(munge)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=(http://munge.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
noextract=()
md5sums=('ec156c0a30b3c8f0fcd090c36e3a524c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --localstatedir=/var --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install

# mv stuff in init.d to rc.d and remove init.d
  /bin/mv ${pkgdir}/etc/init.d ${pkgdir}/etc/rc.d

# license file
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}

