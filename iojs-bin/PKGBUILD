# Maintainer: Josip Janzic <josip.janzic@gmail.com>
pkgname=iojs-bin
pkgver=2.1.0
pkgrel=1
pkgdesc="Evented I/O for V8 JavaScript - Node.js fork"
arch=('i686' 'x86_64'  'armv6h' 'armv7h')
url="https://iojs.org/"
license=('MIT')
depends=('openssl')
optdepends=('python2: for node-gyp')
provides=('nodejs')
conflicts=('nodejs')
options=('!emptydirs')

_arch=x64
[[ $CARCH = i686 ]] && _arch=x86
[[ $CARCH = armv6h ]] && _arch=armv6l
[[ $CARCH = armv7h ]] && _arch=armv7l

source=("https://iojs.org/dist/v${pkgver}/iojs-v${pkgver}-linux-${_arch}.tar.xz")

sha256sums=('f3dd670a0c301632c000fdb9e4951f4692330ef130bd91fb035ff10e862401eb')
[[ $CARCH = i686 ]] && sha256sums[0]='4e9e3f8bd0092e5d510ecd14f7b3a91efcd20e2b83a59b885db67f480a0aaf53'
[[ $CARCH = armv6h ]] && sha256sums[0]='8166c8f0486783f97e28a829cbf7c31304bbada1d4fb9b35d18dae2b77744697'
[[ $CARCH = armv7h ]] && sha256sums[0]='f574da12e10ab0138ad7eb6e0309b441ad67846b9ff9e5759a75e70ed4c30e82'

_extracted_arch=$_arch
[[ $CARCH = i686 ]] && _extracted_arch=ia32

package() {
        cd "iojs-v${pkgver}-linux-${_extracted_arch}"

        mkdir "$pkgdir/usr/"

        rm -rf ./share/systemtap
        mv ./{bin,include,lib,share} "$pkgdir/usr/"

        install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/iojs/LICENSE
}
