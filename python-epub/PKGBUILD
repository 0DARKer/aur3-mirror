# Hack for AUR
pkgname='python-epub'
true && pkgname=('python-epub' 'python2-epub')

pkgver=0.5.0
pkgrel=1
pkgdesc="Python library to open and read epub version 2 archives."
arch=('any')
url="http://pypi.python.org/pypi/epub"
license=('LGPL3')
source=("http://pypi.python.org/packages/source/e/epub/epub-0.5.0.tar.gz")
md5sums=('af8672094403898e25b0be8e0f2fa4c6')

package_python-epub() {
  depends=('python')

  cd "$srcdir/epub-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

package_python2-epub() {
  depends=('python2')

  cd "$srcdir/epub-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

