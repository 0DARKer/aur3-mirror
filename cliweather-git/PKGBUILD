# Maintainer: Patrick Palka <patrick@parcs.ath.cx>
# Development: http://closure.ath.cx/aur-dev

_gitname="cliweather"
pkgname=cliweather-git
pkgver=20120204
pkgrel=1
pkgdesc="Simple CLI for Google's weather API (Git version)"
url="https://github.com/AaronFoltz/$_gitname"
arch=('any')
license=('WTFPL')
depends=('python')
makedepends=('git')
provides=('cliweather')
replaces=('cliweather')
conflicts=('cliweather')

_gitroot="git://github.com/AaronFoltz/$_gitname"

package() {
    msg "Connection to $_gitname repository..."
    if [ -d "$_gitname" ]; then
        cd "$_gitname" && git pull origin
        msg "The local files are updated."
    else
        git clone "$_gitroot" && cd "$_gitname"
    fi

    install -vDm755 "weather" "$pkgdir/usr/bin/weather"
}
