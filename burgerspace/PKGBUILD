pkgname=burgerspace
pkgver=1.9.0
pkgrel=1
pkgdesc="A clone of the 1982 BurgerTime video game by Data East"
arch=('i686' 'x86_64')
url="http://perso.b2b2c.ca/sarrazip/dev/$pkgname.html"
license=('GPL')
depends=('sdl_image' 'sdl_mixer' 'flatzebra>=0.1.5')
makedepends=('autoconf' 'automake' 'pkgconfig>=0.9')
source=(http://perso.b2b2c.ca/sarrazip/dev/$pkgname-$pkgver.tar.gz)
md5sums=('ed8a1ab0f7ee2ed8e09f31e533657ac8')

build() {
  cd $pkgname-$pkgver

  ./autogen.sh --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
