pkgname=kplayer
pkgver=0.7
pkgrel=1
pkgdesc="Multimedia player for KDE4 using mplayer as a backend"
arch=('i686' 'x86_64')
url="http://kplayer.sourceforge.net"
license=('GPL')
depends=('kdelibs' 'mplayer' 'libxft-cleartype')
conflicts=('kplayer<=0.6.3')
source=(http://prdownloads.sourceforge.net/kplayer/$pkgname-$pkgver.tar.bz2)
md5sums=('563d5297bccd6f96f58ec3cfa37646db')
options=('libtool')

build() {
  cd $startdir/src/$pkgname-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=release .
  make || return 1
  make DESTDIR=$startdir/pkg install
}

