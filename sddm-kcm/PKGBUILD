# Maintainer: Antonio Rojas

pkgname=sddm-kcm
pkgver=0.1.0
pkgrel=1
pkgdesc="SDDM configuration module for KDE"
arch=('i686' 'x86_64')
url='https://github.com/sddm/sddm-kcm'
license=('GPL')
depends=('sddm' 'kdelibs4support')
makedepends=('extra-cmake-modules' 'kdoctools' 'qt5-tools')
source=("https://github.com/sddm/$pkgname/archive/$pkgver.tar.gz")
md5sums=('7b5f53c7d09d5f02d49bed800977352b')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DSYSCONF_INSTALL_DIR=/etc
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}

