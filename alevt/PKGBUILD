pkgname=alevt
pkgver=1.6.2
pkgrel=3
pkgdesc="A teletext/videotext decoder and browser for the vbi device and X11"
arch=('i686' 'x86_64')
url="http://www.goron.de/~froese"
license=('GPL')
depends=('libpng' 'libx11')
install=alevt.install
source=(http://www.goron.de/~froese/alevt/$pkgname-$pkgver.tar.gz alevt.desktop)
md5sums=('e5a32776e7eff48ec48449b3c3c1cc23'
         '10dbfcafa9ff0b5f9ce17ab98e7eadec')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  install -m755 -d $startdir/pkg/usr/{bin,share/man/man1,share/pixmaps,share/applications}
  install -m755 alevt alevt-cap alevt-date $startdir/pkg/usr/bin
  install -m644 alevt.1x alevt-date.1 alevt-cap.1 $startdir/pkg/usr/share/man/man1
  install -m644 contrib/mini-alevt.xpm $startdir/pkg/usr/share/pixmaps
  install -m644  $startdir/src/alevt.desktop $startdir/pkg/usr/share/applications/
}
