# Maintainer Alex Ghoust <ghoust@skyper.homelinux.org>

pkgname=instead-mirror
pkgver=0.5
pkgrel=1
pkgdesc="Quest for instead. Mirror I-III."
arch=('any')
url="http://instead-games.googlecode.com/"
license=('custom')
depends=('instead')
source=(http://instead-games.googlecode.com/files/$pkgname-$pkgver.zip)
md5sums=('6900d9f344e7dc0c85fd6937f28bf600')

build() {
  cd "${srcdir}"
  mkdir -p $pkgdir/usr/share/instead/games/mirror/{fantasy,images,music}
  install -m644 mirror/fantasy/* $pkgdir/usr/share/instead/games/mirror/fantasy || return 1 
  install -m644 mirror/images/* $pkgdir/usr/share/instead/games/mirror/images || return 1
  install -m644 mirror/music/* $pkgdir/usr/share/instead/games/mirror/music || return 1
  install -m644 mirror/{main.lua,actions.lua,menu.lua,part_1.lua,part_2.lua,part_3.lua,part_4.lua,theme.ini} $pkgdir/usr/share/instead/games/mirror/ || return 1
}

