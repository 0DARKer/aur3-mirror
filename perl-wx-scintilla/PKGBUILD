# Contributor: Piotr Rogo≈ºa <rogoza dot piotr at gmail dot com>
# Created: 15/12/2011

# https://wiki.archlinux.org/index.php/Perl_Package_Guidelines

_author=A/AZ/AZAWAWI
_perlmod=Wx-Scintilla
pkgname=perl-wx-scintilla
pkgver=0.34
pkgrel=1
pkgdesc='Wx::Scintilla - Scintilla source code editing component for wxWidgets '
arch=('i686' 'x86_64')
url="http://search.cpan.org/~azawawi/Wx-Scintilla/"
license=('GPL' 'PerlArtistic')
groups=()
depends=(
  perl
  wxgtk
)
makedepends=(
  perl-alien-wxwidgets
  perl-extutils-xspp
  perl-test-more
  perl-wx
)
optdepends=()
provides=(
  perl-wx-scintilla
  perl-wx-scintilla-constant
  perl-wx-scintilla-textctrl
  perl-wx-scintilla-textevent
  perl-wx-scintillatextctrl
  perl-wx-scintillatextevent
)
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://cpan.perl.org/modules/by-authors/id/$_author/$_perlmod-$pkgver.tar.gz")
noextract=()

build(){
  cd "$srcdir/$_perlmod-$pkgver"
  perl Build.PL installdirs=vendor destdir="$pkgdir/"
  perl Build
}
check(){
  cd "$srcdir/$_perlmod-$pkgver"
  perl Build test
}
package(){
  cd "$srcdir/$_perlmod-$pkgver"
  perl Build install
  # remove perllocal.pod and .packlist
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

md5sums=('27121992bb76a4e4dee763172c0443d2')
