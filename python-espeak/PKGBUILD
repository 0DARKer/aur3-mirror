# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=python-espeak
pkgver=0.3
pkgrel=1
pkgdesc="Python bindings for eSpeak."
url="https://launchpad.net/python-espeak"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('espeak' 'python2')
source=(http://launchpad.net/python-espeak/trunk/$pkgver/+download/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=(1fc775bb34daf912e8eba56cc195a961)

build() {
    cd $srcdir/$pkgname-$pkgver
  
    python2 setup.py install --root $pkgdir
}