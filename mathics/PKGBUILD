# Maintainer: roughl

pkgname=mathics
pkgver=0.4.1
pkgrel=1
arch=('any')
pkgdesc='General-purpose online computer algebra system featuring Mathematica-compatible syntax and functions'
url='http://www.mathics.org/'
license=('GPL3')
depends=('cython2' 'django' 'python2-mpmath' 'python2-sympy>=0.7')
source=("http://www.mathics.org/release/${pkgname}-${pkgver}.zip")

build() {
	python2 setup.py build
}

package() {
	cd -- "$srcdir"
	python2 setup.py install --root ${pkgdir}
}

md5sums=('ded15cf1c6a16a52edf5f9404d6f510b')

