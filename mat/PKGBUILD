pkgname=mat
pkgver=0.3.1
pkgrel=1
pkgdesc='Metadata Anonymisation Toolkit'
arch=('i686' 'x86_64')
license=(GPL2)
url="https://mat.boum.org/"
depends=(python2 hachoir-core hachoir-parser perl-exiftool python-distutils-extra coreutils)
optdepends=(python2-poppler
            python2-cairo
            mutagen)
source=("https://mat.boum.org/files/$pkgname-$pkgver.tar.gz"
        "https://mat.boum.org/files/$pkgname-$pkgver.tar.gz.asc")
md5sums=('f29cb93945409146d2c78b3ca6f410b1'
         'addf4c336f7a89cc238ed04b0b7adca4')

build() {
  cd $srcdir/$pkgname-$pkgver

  python2 setup.py build

  # How are we supposed to run the testsuite
}

package() {
  cd $srcdir/$pkgname-$pkgver

  python2 setup.py install --prefix=$pkgdir/usr
}
