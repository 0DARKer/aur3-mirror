pkgname='perl-test-notabs'
pkgver='1.0'
pkgrel='1'
pkgdesc="Check the presence of tabs in your project"
arch=('any')
url='http://search.cpan.org/dist/Test-NoTabs'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/B/BO/BOBTFISH/Test-NoTabs-1.0.tar.gz')
md5sums=('ffb71ba9485b787a1abd25bd27e0020f')

build() {
  DIST_DIR="${srcdir}/Test-NoTabs-1.0"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

