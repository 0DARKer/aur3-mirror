#Mantainer: Anthony25
pkgname=subsonic-kang
pkgver=4.9
pkgrel=1
pkgdesc="Open-source web-based media streamer and jukebox fork of Subsonic with a no license patch, by KHresearch."
url="https://github.com/KHresearch/subsonic"
arch=('i686' 'x86_64' 'armv6h')
license=('GPL')
conflicts=('subsonic' 'subsonic-beta' 'subsonic-kang-git')
depends=('java-runtime-headless' 'libcups')
backup=('var/subsonic/db'
    'var/subsonic/subsonic.sh')
source=("http://prdownloads.sourceforge.net/subsonic/subsonic-${pkgver}-standalone.tar.gz"
    "https://github.com/KHresearch/subsonic/releases/download/v${pkgver}-kang/subsonic.war"
	'subsonic.service')
noextract=('subsonic.war')

package() {
  cd $srcdir
  mkdir -p $pkgdir/var/subsonic
  mkdir -p $pkgdir/usr/lib/systemd/system
  find ! -name subsonic.war ! -name subsonic.bat \
      ! -name subsonic-${pkgver}-standalone.tar.gz \
      ! -name subsonic.service -exec cp {} $pkgdir/var/subsonic \;
  cp $startdir/subsonic.war $pkgdir/var/subsonic
  cp $srcdir/subsonic.service $pkgdir/usr/lib/systemd/system
}

md5sums=('1932fa2d1915498547675f24586acf8d'
         'f3cea3de6f6d89f8fab594e061f2f767'
         '6525b6c6cb9693f99585b6fcd28995cd')
