# Maintainer: Pouar

_real_name=easytether
pkgname=${_real_name}-rpm
pkgver=0.7.2
pkgrel=1
pkgdesc="Internet access via smartphone"
arch=('i686' 'x86_64')
url="http://www.mobile-stream.com/easytether/drivers.html"
license=('unknown:freeware')
depends=('glibc' 'libusb' 'udev' 'rpmextract')
conflicts=('easytether-bin')
_arch=i686
[ "${CARCH}" == "x86_64" ] && _arch=${CARCH}
source="http://www.mobile-stream.com/beta/${_real_name}-${pkgver}-${pkgrel}.${_arch}.rpm"
md5sums=('da9f66e836443e47e46cecc3b212e1a5')
build()
{
  rpmextract.sh "${_real_name}-${pkgver}-${pkgrel}.${CARCH}.rpm"
}

package()
{
  mv lib usr "${pkgdir}"/
}

