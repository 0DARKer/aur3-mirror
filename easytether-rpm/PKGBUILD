# Maintainer: Pouar

pkgname=easytether-rpm
_debrel=1
pkgver=0.7.2
pkgrel=2
pkgdesc="Internet access via smartphone"
arch=('i686' 'x86_64')
url="http://www.mobile-stream.com/easytether/drivers.html"
license=('unknown:freeware')
depends=('glibc' 'libusb' 'udev' 'rpmextract')
conflicts=('easytether-bin')
_file="easytether-${pkgver}-${_debrel}.${CARCH}.rpm"
build()
{
  wget "http://www.mobile-stream.com/beta/${_file}"
  rpmextract.sh "${_file}"
}

package()
{
  mv lib usr "${pkgdir}"/
}

