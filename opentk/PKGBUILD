pkgname=opentk
pkgver=1.0.20101006
pkgrel=1
pkgdesc="An advanced, cross-platform, C-sharp OpenGL, OpenAL and OpenCL wrapper for Mono/.Net."
arch=(any)
license=('MIT')
makedepends=(mono)
options=(!strip)
url='http://www.opentk.com/'
conflicts=(opentk-svn)
provides=(opentk-svn)
source=("http://downloads.sourceforge.net/opentk/opentk-2010-10-06.zip"
"AssemblyList.txt")
sha1sums=('9685ffbb62103ff7c466329d3e8855012acff828'
          '6d7146e32bd26c2626f16578141fe1b034ea0ab3')

build() {
  cd "${srcdir}/opentk"

  xbuild OpenTK.sln /p:Configuration=Release
}

package() {
  cd "${srcdir}/opentk"
  
  gacutil -il ../AssemblyList.txt -root $pkgdir/usr/lib
}
