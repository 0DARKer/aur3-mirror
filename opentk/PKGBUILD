pkgname=opentk
pkgver=2010.10.06
pkgrel=2
pkgdesc="An advanced, cross-platform, C-sharp OpenGL, OpenAL and OpenCL wrapper for Mono/.Net."
arch=(any)
license=('MIT')
depends=(mono)
makedepends=(mono)
options=(!strip)
url='http://www.opentk.com/'
conflicts=(opentk-svn)
provides=(opentk-svn)
source=("http://downloads.sourceforge.net/opentk/opentk-${pkgver//./-}.zip"
"AssemblyList.txt"
"remove-special-characters.patch")
md5sums=('22534c103fa67fb6403f24f602f1d279'
         'd6bc18810af13edceef532395e511617'
         'd4277a0c247d3403183da34aece2b052')

build() {
  cd "${srcdir}/opentk"
  patch -p1 -i ../remove-special-characters.patch
  xbuild OpenTK.sln /p:Configuration=Release
}

package() {
  cd "${srcdir}/opentk"
  
  gacutil -il "../AssemblyList.txt" -root "$pkgdir/usr/lib"
}
