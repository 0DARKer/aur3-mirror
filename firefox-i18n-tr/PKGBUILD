# Contributor: ErtuÄŸrul HAZAR <ertugrulhazar at gmail dot com>
pkgname=firefox-i18n-tr
pkgver=4.0
pkgrel=1
_language=tr
pkgdesc="Turkish language pack for Firefox"
arch=('i686' 'x86_64')
license=('MPL')
url="http://mozilla.org.tr/"
depends=("firefox>=${pkgver}")
makedepends=('unzip')
conflicts=(mozilla-firefox-${_language} firefox-${_language})
source=(ftp://ftp.mozilla.org/pub/firefox/releases/${pkgver}/linux-i686/xpi/${_language}.xpi)
md5sums=('8de337e95331ce2487fae32499887aed')

build() {
  cd ${srcdir}
  install -d "$pkgdir/usr/lib/firefox-4.0/extensions/"
  install -m644 ${_language}.xpi "$pkgdir/usr/lib/firefox-4.0/extensions/langpack-${_language}@firefox.mozilla.org.xpi"
}
