pkgname=firefox-i18n-tr
pkgver=3.6.13
pkgrel=1
_language=tr
pkgdesc="Turkish language pack for Firefox"
arch=('i686' 'x86_64')
license=('MPL')
url="http://mozilla.org.tr/"
depends=("firefox>=${pkgver}")
makedepends=('unzip')
conflicts=(mozilla-firefox-${_language} firefox-${_language})
source=(ftp://ftp.mozilla.org/pub/firefox/releases/${pkgver}/linux-i686/xpi/${_language}.xpi)
md5sums=('15a07c1dfd9484106ebb6079fd8c8254')

build() {
  cd ${startdir}/src
  unzip -o ${_language}.xpi
  sed -i "s|jar:chrome/${_language}.jar|jar:${_language}.jar|" chrome.manifest || return 1
  install -D -m 644 chrome/${_language}.jar ${pkgdir}/usr/lib/firefox-3.6/chrome/${_language}.jar || return 1
  install -D -m 644 chrome.manifest ${pkgdir}/usr/lib/firefox-3.6/chrome/${_language}.manifest || return 1
}
