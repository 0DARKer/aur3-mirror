# Contributor: Chris Baker <baker.chris.3@gmail.com>
pkgname=editra
pkgver=0.5.72
pkgrel=1
pkgdesc="Multi-platform text editor with features that aid in code development"
arch=('i686' 'x86_64')
url="http://editra.org/"
license=('custom:wxWindows')
depends=('python' 'wxpython' 'setuptools')
source=(http://editra.org/uploads/src/Editra-$pkgver.tar.gz 
        editra.desktop)
md5sums=('a7ffe95dc0029c10f0da7af193f866a7'
         '6082f8d4bf1650af8ce87c6b3d38053b')
         
build() {
	cd $srcdir/Editra-$pkgver/
	python setup.py install --root=$pkgdir/ --optimize=1 || return 1
	install -D -m644 pixmaps/editra.png $pkgdir/usr/share/pixmaps/editra.png
	install -D -m644 COPYING $pkgdir/usr/share/licenses/editra/COPYING
	install -D -m644 $srcdir/editra.desktop $pkgdir/usr/share/applications/editra.desktop
}

