# Maintainer: Iven Hsu <ivenvd#gmail.com>

pkgname=yaner
pkgver=0.3.1
_pkgdir=iven-Yaner-0b75ba9
pkgrel=1
pkgdesc="GTK+ interface for aria2 download mananger."
arch=(any)
url="http://iven.github.com/Yaner"
license=('GPL3')
depends=('python-chardet' 'python-sqlalchemy' 'python-gobject' 'libnotify' 'dconf')
conflicts=('yaner-git')
options=(!emptydirs)
install=yaner.install
source=(https://github.com/iven/Yaner/tarball/YANER_${pkgver//./_})
md5sums=('68604b81d9fb792b92f753db1ccdc4ea')

package() {
  cd "$srcdir/$_pkgdir"
  python setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

