# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# See http://wiki.archlinux.org/index.php/VCS_PKGBUILD_Guidelines
# for more information on packaging from GIT sources.

# Maintainer: Your Name <youremail@domain.com>
pkgname=nimrod-git
pkgver=20110220
pkgrel=4
pkgdesc="Nimrod is a new statically typed, imperative programming language, that supports procedural, object oriented, functional and generic programming styles while remaining simple and efficient."
arch=(x86 x86_64)
url="http://force7.de/nimrod/"
depends=(glibc)
license=('GPL' 'LGPL')
makedepends=('git')
provides=('nimrod')
source=()
md5sums=() #generate with 'makepkg -g'

_gitroot="https://github.com/Araq/Nimrod.git"
_gitname="nimrod"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  sed -i -e 's/^OS:.*$/OS: "linux"/' -e 's/^CPU:.*$/CPU: "i386;amd64"/' ./rod/nimrod.ini
  ./build.sh
  ./bin/nimrod c koch
  ./koch boot
  PATH=./bin:$PATH ./koch csource
}

package() {
  cd "$srcdir/$_gitname-build"
  ./install.sh $pkgdir/
  mkdir -p $pkgdir/usr/share/doc/nimrod
  mkdir -p $pkgdir/usr/share/nimrod/data
  mkdir -p $pkgdir/usr/lib/nimrod
  mkdir -p $pkgdir/etc
  mv $pkgdir/nimrod/lib/* $pkgdir/usr/lib/nimrod
  mv $pkgdir/nimrod/config/* $pkgdir/etc
  mv $pkgdir/nimrod/doc/* $pkgdir/usr/share/doc/nimrod
  rmdir $pkgdir/nimrod/config
  rmdir $pkgdir/nimrod/doc
  rmdir $pkgdir/nimrod/lib
  mv $pkgdir/nimrod/bin $pkgdir/usr/
  rmdir $pkgdir/nimrod
} 
