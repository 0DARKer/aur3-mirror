# Contributor: Nathan Owe <ndowens.aur at gmail.com>
pkgname=amberfish
pkgver=1.6.4
pkgrel=2
pkgdesc="general purpose text retrieval software"
arch=('i686')
url="http://www.etymon.com/tr.html"
license=('GPL2')
source=(http://etymon.com/software/amberfish/stable/${pkgname}-${pkgver}.tar.gz)
depends=('gcc-libs')
md5sums=('8eb3f1e26da9d0317719822539c3b932') 

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --mandir=/usr/share/man
  make 
  make DESTDIR=${pkgdir}/ install
}
