# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-moosex-hasdefaults
pkgver=0.03
pkgrel=1
pkgdesc='default "is" to "ro" or "rw" for all attributes'
arch=('i686' 'x86_64')
url="http://search.cpan.org/~sartak/MooseX-HasDefaults-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/S/SA/SARTAK/MooseX-HasDefaults-$pkgver.tar.gz")
md5sums=('589eb4d7a841e8824d8a24fa92ade369')

build() {
	cd "$srcdir/MooseX-HasDefaults-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/MooseX-HasDefaults-$pkgver"
	make install DESTDIR="$pkgdir"
}
