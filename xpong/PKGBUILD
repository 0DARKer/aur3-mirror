# Author: Mikolaj Nowak <ivan.legnica@gmail.com>

pkgname=xpong
pkgver=1.1.0
pkgrel=1
pkgdesc="A popular pong game"
arch=('i686' 'x86_64')
depends=('sfml>=1.99')
url="http://ivan1pl.cba.pl/index.php?page=projects/xpong"
license=(GPL)
source=(http://ivan1pl.cba.pl/$pkgname-$pkgver.tar.gz)

build() { 
  cd $srcdir/$pkgname-$pkgver
  make 
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DEST=$pkgdir install
}

md5sums=('990fd00c7f8f4b704eb0a6a7821d0b56')
