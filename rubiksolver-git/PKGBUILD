# Maintainer: Sergio Correia <sergio.correia@uece.net>

pkgname=rubiksolver-git
pkgver=20130304
pkgrel=1
pkgdesc="A Qt/QML application to assist with solving the popular Rubik's cube"
arch=('i686' 'x86_64')
url="https://github.com/qrwteyrutiyoup/rubiksolver"
license=('GPL')
depends=('qt5-quick1')
makedepends=('git')
source=('0001-porting-to-qt5.patch')
md5sums=('f747a2e2c51086bc6920aa3f94d4adb7')

_gitroot="https://github.com/qrwteyrutiyoup/rubiksolver"
_gitname=rubiksolver
_gitbranch=master

build() {
    if [ ! -d "${_gitname}" ]; then
        git clone -b ${_gitbranch} --depth 1 ${_gitroot} ${_gitname} && cd ${_gitname}
    else
        cd ${_gitname} && git reset --hard && git pull origin && git clean -dfx
    fi

    msg "GIT checkout done."

    patch -uNp1 -i ../0001-porting-to-qt5.patch
    qmake PREFIX=/usr
    make
}

package() {
    cd "${_gitname}"

    make INSTALL_ROOT="${pkgdir}" install
    rm -rf ${pkgdir}/usr/share
}
