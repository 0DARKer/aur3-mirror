# Maintainer: Imran Rauf <imran.spammable@gmail.com>

pkgname=ttf-urdufonts
pkgdesc="Urdu fonts: Jameel Noori Nastaleeq (+kasheeda), Nafees Web Naskh, PDMS Saleem Quran Font"
license=('custom')
pkgver=1.0
pkgrel=1
arch=('any')
depends=('fontconfig' 'xorg-font-utils')
url="http://urdu.ca"
source=("http://urdu.ca/UrduFonts.zip" "LICENSE")
md5sums=('0229941c51a67acb3669c783cd384379' '3566d27995e9761c29148be747fcf1b5')
install=$pkgname.install

package() {
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -d "$pkgdir/usr/share/fonts/TTF"
  cp -dpr --no-preserve=ownership "$srcdir/"*.ttf "$pkgdir/usr/share/fonts/TTF/"
}

