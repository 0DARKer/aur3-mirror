pkgname=oangband
pkgver=1.1.0
pkgrel=4
pkgdesc="an Angband variant emphasising intuitive rules, varied gameplay, and extra coolness."
arch=('i686' 'x86_64')
url="http://www.oangband.com/main.php"
license=('unknown')
groups=('')
depends=('')
makedepends=('')
provides=('')
conflicts=('')
replaces=('')
#backup=('')
options=('')
source=("http://www.oangband.com/zips/Oangband$(echo $pkgver | sed s/\\.//g)-src.tar.gz"
	"oangband") #`echo $pkgver | sed s/\\.//g`
md5sums=('ea93890b45a0dc8edfedd86e3c083ec7' 'baa873d69666a15d19a3b85d65a76f34')


build() {
    cd "$srcdir/$pkgname"
    ./configure
    make
    mkdir -p "$pkgdir/usr/share/$pkgname/"
    cd "src/"
    install -m 755 -D oangband "$pkgdir/usr/share/$pkgname/oangband"
    cd "../"
    cp -R lib/ "$pkgdir/usr/share/$pkgname/"
}

check() {
    cd "$pkgdir/usr/share/$pkgname/lib/"
    rm "Makefile"
    rm "Makefile.am"
    rm "Makefile.in"
    cd "info"
    rm "Makefile"
    rm "Makefile.am"
    rm "Makefile.in"
    cd "../help"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    cd "../file"
    rm "Makefile"
    rm "Makefile.in" 
    rm "Makefile.am"
    cd "../edit"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    cd "../apex"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    cd "../bone"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    cd "../data"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    rm "delete.me"
    cd "../pref"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    cd "../save"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    cd "../user"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    cd "../xtra"
    rm "Makefile"
    rm "Makefile.in"
    rm "Makefile.am"
    rm "delete.me"
    cd "../pref"
    rm "delete.me"
    cd "../save"
    rm "delete.me"

}

package() {
    chmod 644 "$pkgdir/usr/share/$pkgname/lib/"
    chmod -R 644 "$pkgdir/usr/share/$pkgname/lib/" # added this because I have no idea what the permissions are for the files in lib/
    mkdir -p "$pkgdir/usr/bin/"
    #pwd
    cd "../"
    install -m 755 -D oangband "$pkgdir/usr/bin/oangband"
#    if [[ -e "$pkgdir/usr/bin/Oangband" ]]; then
#	rename "$pkgdir/usr/bin/Oangband" "$pkgdir/usr/bin/oangband" "$pkgdir/usr/bin/Oangband";
#    fi
#    echo "Run oangband as 'Oangband'"
}
