#!/bin/sh

file="/usr/share/oangband/oangband"
libs="/usr/share/oangband/lib/"

if [[ -d `echo -n $libs` ]]; then
   if [[ -e `echo -n $file`  ]]; then
     cd /usr/share/oangband/ && exec $file;
     cd $OLDPWD;
 else
     printf "\e[1;31mERROR\e[1m[\e[1;33m!!\e[1m]\e[1;31m: \e[0m File \"$file\", does not exist; it cannot, therefore, be executed.\n";
 fi
 else printf "\e[1;31mERROR\e[1;31m[\e[0m\e[1;33m!!\e[0;00m\e[1;31m]\e[1;31m: \e[0m Directory \"$libs\", does not exist; cannot use it as as library.\n";
fi
