# Maintainer: r20d20 <r20d20@web.de>
pkgname=jameica-nightly
pkgver=2.5.0
pkgrel=1
pkgdesc="Jameica Plattform"
arch=(i686 x86_64)
url="http://www.willuhn.de/products/jameica/"
license=('GPL')
depends=('java-runtime>=1.6')
makedepends=('unzip')
source=(http://www.willuhn.de/products/jameica/releases/nightly/jameica-$pkgver-nightly-linux64.zip)
md5sums=('64516c04fe009c5681f75e2e52cedbac')

package() {
	install -d "${pkgdir}/usr/share/java"
	cp -R "${srcdir}/jameica" "${pkgdir}/usr/share/java"
	mkdir -p ${pkgdir}/usr/bin/
	ln -s ${pkgdir}/usr/share/java/jameica/jameica.sh ${pkgdir}/usr/bin/jameica
}