# Maintainer: Marco Kundt <mrckndt@gmail.com>

_pkgname=Pim
pkgname=pim-black
pkgver=0.6.0
pkgrel=1
pkgdesc="Python image viewer with vim-like keybindings (black background)"
arch=('any')
url="https://github.com/Narrat/Pim"
license=('MIT')
depends=('python-gobject')
conflicts=('pim')
source=("$pkgname-$pkgver.tar.gz::https://github.com/Narrat/Pim/archive/$pkgver.tar.gz"
        'colors.patch')
sha256sums=('df6eebeb1f96e01e58fe094a002979277138ca54559101084614fe5b41981e06'
            'a280c5adeafd4964606d33160a784c8f5af9f83826a1edd005ee750f0baf1f21')

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  patch -p1 -i "${srcdir}/colors.patch"

  install -D -m755 pim $pkgdir/usr/bin/pim
  install -D -m644 LICENSE $pkgdir/usr/share/licenses/${pkgname}/LICENSE
  install -D -m644 pim.desktop "${pkgdir}/usr/share/applications/pim.desktop"
}
