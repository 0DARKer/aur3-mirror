# Contributor: William Rea <sillywilly@gmail.com>
# Maintainer: Nathan O <ndowens.aur at gmail dot com>
pkgname=jthread
pkgver=1.2.1
pkgrel=3
pkgdesc="Provides some classes to make use of threads easy on different platforms"
arch=('i686' 'x86_64')
url="http://research.edm.uhasselt.be/~jori/page/index.php?n=CS.Jthread"
license="MIT"
options=('!libtool')
depends=('gcc-libs')
source=(http://research.edm.uhasselt.be/jori/jthread/${pkgname}-${pkgver}.tar.gz)
md5sums=('2c946713bb8ec438ea0330519e852bf1')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make 
}
package()
{
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE.MIT ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
