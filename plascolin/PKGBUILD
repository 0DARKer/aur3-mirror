# Contributor:Xemertix <arch88(at)katamail(dot)com>

pkgname=plascolin
pkgver=0.01.01
pkgrel=1
depends=('gtk2' 'cairo')
pkgdesc="A tool to create and to view anaglyph stereo images and to display the left and right image on output devices"
url="http://www.schrammel.org/stereo-plascolin.php"
arch=("i686" "x86_64")
license=('GPL')
source=(http://www.schrammel.org/download/plascolin-0.01.01.tar.gz)
    
md5sums=('76f0318b35106d58139dbe7f63e6c6cc')

build() {

  cd ${srcdir}/${pkgname}-${pkgver}

  ./autogen.sh || return 1 

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1

}
