# Contributor: Maarten de Boer <ventieldopje@gmail.com>
# Mantainer: Adria Arrufat <swiftscythe@gmail.com>
pkgname=florence
pkgver=0.5.0
pkgrel=2
pkgdesc="An extensible scalable on-screen virtual keyboard for GNOME"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/florence/"
license=('GPL')
depends=('at-spi' 'librsvg' 'libnotify')
makedepends=('gnome-doc-utils')
optdepends=()
provides=(florence)
source=(http://downloads.sourceforge.net/project/florence/florence/$pkgver/florence-$pkgver.tar.bz2)
md5sums=('037a983659152cd5129745f2b8c6a07d')
build() {
  cd "$srcdir/florence-$pkgver"

  ./configure --prefix=/usr --without-xrecord --without-panelapplet
  make || return 1
  make DESTDIR="$pkgdir/" install
}

