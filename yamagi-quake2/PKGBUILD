# Based on the work of both Andrew Simmons <andrew.simmons@gmail.com>
# and Contributor: Premysl Janouch <warriant@gmail.com>
# and Contributor: Frederic Bezies <fredbezies@gmail.com>
# This package is only for main quake.

pkgname=yamagi-quake2
_pkgname=quake2
pkgver=2.11
pkgrel=1
pkgdesc="Quake 2 engine focused on single player and 64bits."
url="http://www.yamagi.org/quake2/"
license=('GPL')
depends=('libjpeg' 'sdl' 'libxxf86vm' 'libxxf86dga')
makedepends=('unzip')
conflicts=(quetoo quake2)
install="quake2.install"
arch=('i686' 'x86_64')
source=(http://deponie.yamagi.org/$_pkgname/$_pkgname-$pkgver.tar.bz2 $_pkgname.sh)
md5sums=('476f84aa300e3f45214bf7596e173770'
         'ea8d2c873f7891476a0b2a79b2ef19b3')

build() {
    cd $srcdir/$_pkgname-$pkgver

    make || return 1

    # Create Destination Directories
    install -d $pkgdir/usr/{bin,share/$_pkgname}

    # Install Game Base
    cd $srcdir/$_pkgname-$pkgver/release
    cp -R * $pkgdir/usr/share/$_pkgname

    # Install Game Launcher
    install -D -m 755 $srcdir/$_pkgname.sh $pkgdir/usr/bin/$_pkgname
}
