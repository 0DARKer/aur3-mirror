pkgname=dino-dfm
pkgver=0.3
pkgrel=0
pkgdesc="Dino file manger for gnu/linux da src.debian"
arch=('i686' 'x86_64')
url="http://dfm.sourceforge.net/?do=static&page=get-dino"
license=('GPL')
depends=('qt')
#makedepends=('')

if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='amd64'
    md5sums=('9a48c78a6c238a0d610adee41ba6ba75')
elif [ "${CARCH}" = 'i686' ]; then
    ARCH='i386' 
    md5sums=('5e772d9888120eadba3c5d8c847e0771')
fi
#http://download.opensuse.org/repositories/home:/deni123:/Dino/Debian_6.0/amd64/dfm_0.3_amd64.deb
source=http://download.opensuse.org/repositories/home:/deni123:/Dino/Debian_6.0/${ARCH}/dfm_${pkgver}_${ARCH}.deb
build() {
	cd ${startdir}/src
	ar -x ${startdir}/src/dfm_${pkgver}_${ARCH}.deb
	tar -zxf ${startdir}/src/data.tar.gz
	cp -r ${startdir}/src/usr/ ${startdir}/pkg/
}

