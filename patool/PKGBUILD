pkgname=patool
pkgver=0.19
pkgrel=1
pkgdesc="patool is portable command line archive file manager"
arch=('i686' 'x86_64')
url="http://github.com/downloads/wummel/patool/patool-0.19.tar.gz"
license=('GPL')
depends=('python2')
makedepends=('git' 'make')
source=("http://github.com/downloads/wummel/patool/patool-${pkgver}.tar.gz")
sha256sums=("f7f6b3d6875cfd9a6eec3169b179369c5294970673235e819ec4253cdad02c81")

package() {
  cd "$srcdir/${pkgname}-${pkgver}"

python2 setup.py install --root=$startdir/pkg/ --prefix=/usr
}
