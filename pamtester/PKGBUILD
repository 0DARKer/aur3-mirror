pkgname=pamtester
pkgver=0.1.2
pkgrel=1
pkgdesc="pamtester is a tiny utility program to test the pluggable authentication modules (PAM) facility"
arch=(i686 x86_64)
license=('BSD')
url="http://pamtester.sourceforge.net/"
depends=('pam')
source=(http://dl.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('f441a6617cbc640ea02f3e22058c0461')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr 
  make || return 1 
  make DESTDIR=${startdir}/pkg install 
}
