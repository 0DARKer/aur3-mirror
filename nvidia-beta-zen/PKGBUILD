pkgname=nvidia-beta-zen
pkgver=190.42
_kernver=$(uname -r)
pkgrel=1
pkgdesc="NVIDIA beta drivers for kernel26zen"
arch=('i686' 'x86_64')
[ "$CARCH" = "i686" ] && ARCH=x86 && NV=0
[ "$CARCH" = "x86_64" ] && ARCH=x86_64 && NV=2
provides=('nvidia')
url="http://www.nvidia.com/" 
depends=('kernel26zen-git' 'nvidia-utils-beta>=${pkgver}')
conflicts=('nvidia-96xx' 'nvidia-71xx' 'nvidia-legacy')
license=('custom') 
install=nvidia.install 
source=(http://download.nvidia.com/XFree86/Linux-$ARCH/${pkgver}/NVIDIA-Linux-$ARCH-${pkgver}-pkg${NV}.run)
#md5sums=('f94806feee87de756d14fe3e9bcaf05a')
#[ "$CARCH" = "x86_64" ] && md5sums=('ef5b8eff89f740d1cc7e483fb4c93b3b')
md5sums=('f94806feee87de756d14fe3e9bcaf05a')
[ "$CARCH" = "x86_64" ] && md5sumes=('949f7f5e9a7780725d5d21eb6b122b0a')

build()
{
  # Extract
  echo ${_kernver}
  cd $startdir/src/

  sh NVIDIA-Linux-$ARCH-${pkgver}-pkg${NV}.run --extract-only
  cd NVIDIA-Linux-$ARCH-${pkgver}-pkg${NV}

  # Any extra patches are applied in here...
  # patch -p0 < $srcdir/2.6.30.patch

  cd usr/src/nv/

  # cp -fv $startdir/nv.c2 nv.c

  rm makefile
  ln -s Makefile.kbuild Makefile

  make SYSSRC=/lib/modules/${_kernver}/build module || return 1

  # install kernel module
  mkdir -p $startdir/pkg/lib/modules/${_kernver}/kernel/drivers/video/
  install -m644 nvidia.ko $startdir/pkg/lib/modules/${_kernver}/kernel/drivers/video/

  sed -i -e "s/KERNEL_VERSION='.*'/KERNEL_VERSION='${_kernver}'/" $startdir/*.install
}
