pkgname=demjson
pkgver=1.4
pkgrel=3
pkgdesc="Encoder, decoder, and lint/validator for JSON (JavaScript Object Notation) compliant with RFC 4627"
arch=(i686 x86_64)
url="http://deron.meranda.us/python/demjson/"
license=('MIT')
depends=(python)
makedepends=(setuptools)
md5sums=(6f6c88bfe2443390230109c709243fcd)
source=(http://pypi.python.org/packages/source/d/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
	cd $srcdir/$pkgname-$pkgver
	python setup.py install --root=$startdir/pkg --prefix=/usr || return 1
}

