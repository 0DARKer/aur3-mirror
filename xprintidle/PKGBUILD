# Maintainer: Rick Rein <jeebusroxors@gmail.com>
pkgname=xprintidle
pkgver=0.1
pkgrel=1
pkgdesc="Print X idle time"
arch=('i686' 'x86_64')
license=('GPL')
url=(http://www.dtek.chalmers.se/~henoch/text/xprintidle.html)
source=(http://www.dtek.chalmers.se/~henoch/text/xprintidle/xprintidle-$pkgver.tar.gz)
md5sums=('899445a20733cec66856515072502999')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  cp $startdir/src/$pkgname-$pkgver/xprintidle $startdir/pkg/usr/bin/
}
