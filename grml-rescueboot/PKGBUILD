# Maintainer: Max Roder <maxroder@web.de>

pkgname='grml-rescueboot'
pkgver='0.4.0'
pkgrel='1'
pkgdesc=""
url="http://deb.grml.org/pool/main/g/grml-rescueboot/"
arch=('any')
license=('GPL')
depends=('grub2')
install='grml-rescueboot.install'
source=("http://deb.grml.org/pool/main/g/grml-rescueboot/grml-rescueboot_0.4.0.tar.gz")
sha256sums=('d20027750719f0eadd9484c1f0a49f51db620a22405413eb4c38ba3d4a13101a')

package() {
	cd ${srcdir}/${pkgname}

	install -Dm644 etc/default/${pkgname} ${pkgdir}/etc/default/${pkgname}
	install -d /boot/grml
}

# vim:set ts=2 sw=2 et:
