# Contributor: Mike Sager <mike@thegrateful.org>
# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=biblatex-chicago
pkgver=0.9.5a
pkgrel=1
pkgdesc="Chicago 'notes + bibliography' style (Chicago Manual of Style, 15th edition) files for biblatex"
url="http://tug.ctan.org/tex-archive/macros/latex/exptl/biblatex-contrib/biblatex-chicago-notes-df"
arch=('any')
license=('LPPL')
depends=('biblatex')
replaces=("$pkgname-notes-df")
install=biblatex-chicago-notes-df.install
source=($pkgname-$pkgver.zip::http://tug.ctan.org/get/macros/latex/exptl/biblatex-contrib/biblatex-chicago.zip)
md5sums=('77bdb7fbff8a97ec2a34a6b8ef4905eb')

build() {
  cd $srcdir/biblatex-chicago
  install -d \
    $pkgdir/usr/share/texmf/doc/latex/biblatex-contrib/biblatex-chicago
  install -d \
    $pkgdir/usr/share/texmf/tex/latex/biblatex-contrib/biblatex-chicago
  install -m644 biblatex-chicago.sty chicago-authordate.bbx \
    chicago-authordate.cbx chicago-notes.bbx chicago-notes.cbx \
    cms-american.lbx cms-french.lbx cms-german.lbx cms-ngerman.lbx \
    $pkgdir/usr/share/texmf/tex/latex/biblatex-contrib/biblatex-chicago
  install -m644 RELEASE *.pdf *.tex \
    $pkgdir/usr/share/texmf/doc/latex/biblatex-contrib/biblatex-chicago
  install -Dm644 README $pkgdir/usr/share/licenses/$pkgname/README
}
