# Maintainer: Wei-Ning Huang <aitjcize@gmail.com>
pkgname=gummi-gtk3-git
_pkgname=gummi
pkgver=20140510
pkgrel=1
pkgdesc="Gummi LaTeX Editor Gtk3 port git version"
arch=("any")
url="https://github.com/aitjcize/Gummi"
license=("GPL")
makedepends=(git)
conflicts=(gummi-svn)
depends=(gtk3 poppler-glib gtkspell texlive-core gtksourceview3)
source=("git://github.com/aitjcize/${_pkgname}.git")
sha256sums=("SKIP")


pkgver() {
  date '+%Y%m%d'
}

build() {
  cd ${srcdir}/${_pkgname}
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${_pkgname}
  make DESTDIR=${pkgdir} install
}
