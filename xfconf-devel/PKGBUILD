# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfconf-devel
pkgver=4.7.5
pkgrel=1
pkgdesc="Simple client-server configuration storage and query system (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('libxfce4util-devel' 'dbus-glib')
makedepends=('pkgconfig' 'xfce4-dev-tools-devel' 'chrpath' 'perl-extutils-depends' 'perl-extutils-pkgconfig' 'glib-perl')
conflicts=('xfconf' 'xfconf-git')
replaces=('xfconf' 'xfconf-git')
options=('!libtool')
source=(http://archive.xfce.org/src/xfce/xfconf/4.7/xfconf-$pkgver.tar.bz2)
md5sums=('c72007ce68808b64f39d26e2fb51da46')

build() {
	cd ${srcdir}/xfconf-${pkgver}
	./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
		--localstatedir=/var --disable-static --enable-maintainer-mode --with-perl-options=INSTALLDIRS="vendor"
	make
}

package() {
	cd ${srcdir}/xfconf-${pkgver}
	make DESTDIR=${pkgdir} install
  rm ${pkgdir}/usr/lib/perl5/vendor_perl/auto/Xfce4/Xfconf/Xfconf.bs
  chrpath -d ${pkgdir}/usr/lib/perl5/vendor_perl/auto/Xfce4/Xfconf/Xfconf.so
}

# vim:set ts=2 sw=2 et:
