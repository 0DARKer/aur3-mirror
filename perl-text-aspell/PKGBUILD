pkgname=perl-text-aspell
pkgver=0.09
pkgrel=1
pkgdesc="Perl interface to the GNU Aspell library"
url="http://search.cpan.org/~hank/Text-Aspell/"
license="GPL"
arch=('i686' 'x86_64')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/H/HA/HANK/Text-Aspell-0.09.tar.gz")
md5sums=('67ec8b9c4769969fa714fc25c9c73832')

build() {
	  cd $startdir/src/Text-Aspell-$pkgver
	    /usr/bin/perl Makefile.PL
            make
            make DESTDIR=$startdir/pkg install

            /usr/bin/find $startdir/pkg -name '.packlist' -exec rm '{}' \;
	    /usr/bin/find $startdir/pkg -name 'perllocal.pod' -exec rm '{}' \;
	    }

