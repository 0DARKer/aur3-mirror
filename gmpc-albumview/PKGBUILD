# Contributor: Christian Brassat <christian@crshd.cc>

pkgname=gmpc-albumview
pkgver=11.8.16
pkgrel=1
pkgdesc="Album art browser plugin for GMPC"
arch=(any)
url=http://blog.sarine.nl/2009/05/08/gmpc-plugin-album-view/
license=(unknown)
depends=(gmpc=$pkgver)
source=(http://download.sarine.nl/Programs/gmpc/$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('1da7b162571e0cdb95b9b825a5b3dee6bc3021bda2f3091d7f7990e4c1de46cb')
sha512sums=('fb77a8ea5db798b730532eb950b0003da97c5b0bfba1d32486d4c5bb40ac6661c73f37f12662b32b28e4311707c9fc7b2722c47686ebd953105d7cd2b9d86cc4')

build() {
    cd "$srcdir"/$pkgname-$pkgver/
    aclocal
    automake
    sed -i '/$(am__mv)/ s/.*//g' src/Makefile.in
    ./configure --prefix=/usr
    make
}

package() {
    cd "$srcdir"/$pkgname-$pkgver/
    make DESTDIR="$pkgdir" install
}
