pkgname=plasma-theme-caledonia
_themename=Caledonia
pkgver=1.6.1
pkgrel=1
pkgdesc="An elegant and minimalistic dark theme for Plasma-KDE"
arch=('any')
license=('CCPL')
url="http://sourceforge.net/projects/caledonia/"
depends=('kdebase-workspace')
conflicts=('caledonia-bundle')
source=("http://downloads.sourceforge.net/project/caledonia/Caledonia%20%28Plasma-KDE%20Theme%29/$_themename.tar.gz")
sha512sums='9fe8aa0c7e0c24627cdca6783536273a888baadb25c95c0b104d0bbe2d0fb991365d687e2a74b35cdc94d477b28471581afb20bcef969c9f05c1414c05210a7c'

package() {
  install -Dm644 $_themename/LICENSE $pkgdir/usr/share/licenses/$pkgname

  install -d $pkgdir/usr/share/apps/desktoptheme
  mv $srcdir/$_themename $pkgdir/usr/share/apps/desktoptheme
  chmod 755 -R $pkgdir/usr/share/apps/desktoptheme/$_themename
}