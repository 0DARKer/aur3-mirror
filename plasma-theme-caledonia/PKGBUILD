#Contributor Adrian Berriel <berriel@gmail.com>

pkgname=plasma-theme-caledonia
pkgver=0.7
pkgrel=3
pkgdesc="An elegant dark theme for Plasma, based on Ember, and with several new elements"
arch=('i686' 'x86_64')
license=('GPL')
url="http://kde-look.org/content/show.php/Caledonia?content=142424"
depends=('kdelibs' 'kdebase-workspace')
source=(http://kde-look.org/CONTENT/content-files/142424-Caledonia.tar.gz)
md5sums='0b73900e76e940899419527ad1d6fdce'

build()
{
  mkdir -p $startdir/pkg/usr/share/apps/desktoptheme
  cd $startdir/src/Caledonia
  chmod -R 644 {dialogs,icons,lancelot,opaque,rssnow,wallpapers,widgets}
  chmod 655 *
  cp -R ../Caledonia $startdir/pkg/usr/share/apps/desktoptheme
}