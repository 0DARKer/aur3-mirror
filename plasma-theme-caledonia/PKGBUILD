# Maintainer: Ricky <riccardo_aur at libero dot it>
# Contributor: Adrian Berriel <berriel at gmail dot com>

pkgname=plasma-theme-caledonia
_themename=Caledonia
pkgver=1.3
pkgrel=1
pkgdesc="An elegant and minimalistic dark theme for Plasma-KDE"
arch=('any')
license=('CCPL')
url="http://sourceforge.net/projects/caledonia/"
depends=('kdebase-workspace')
source=(http://downloads.sourceforge.net/project/caledonia/Caledonia%20%28Plasma-KDE%20Theme%29/Caledonia.tar.gz)
md5sums='6eb9590b3815c79a04a18fd3e75b7614'

package() {
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
  mv ${srcdir}/${_themename}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}
  chmod 644 -R ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  mkdir -p ${pkgdir}/usr/share/apps/desktoptheme
  mv ${srcdir}/${_themename} ${pkgdir}/usr/share/apps/desktoptheme
  chmod 755 -R ${pkgdir}/usr/share/apps/desktoptheme/${_themename}
}