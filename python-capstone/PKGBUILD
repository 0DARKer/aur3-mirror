# Maintainer: Levente Polyak <levente[at]leventepolyak[dot]net>

pkgname=python-capstone
_pkgname=capstone
pkgver=3.0.1
pkgrel=1
pkgdesc='Python bindings for multi-platform, multi-architecture capstone disassembly framework'
arch=('any')
url='http://www.capstone-engine.org/index.html'
license=('BSD')
depends=('capstone' 'python')
source=(https://github.com/aquynh/capstone/archive/${pkgver}.tar.gz)
sha512sums=('440cdca263a018b22acbd24298aee7be0f094bda507d4d930ac6994c3b9e3fd9fcac18011c3ae74b4aba75f921f0c497de5ac9749f41325ba78dd54e38dee65f')

build() {
  cd ${_pkgname}-${pkgver}/bindings/python
  python setup.py build
}

check() {
  cd ${_pkgname}-${pkgver}/bindings/python
  python test.py
}

package() {
  cd ${_pkgname}-${pkgver}/bindings/python
  python setup.py install -O1 --root="${pkgdir}" --prefix=usr
  install -Dm 644 ../../LICENSE.TXT "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

