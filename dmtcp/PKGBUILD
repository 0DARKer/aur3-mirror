pkgname=dmtcp
pkgver=1.2.7
pkgrel=4
pkgdesc="DMTCP transparently checkpoints the state of multiple simultaneous applications"
url="http://dmtcp.sourceforge.net/"
arch=('i686' 'x86_64')
license=("GPL3")
source=("http://downloads.sourceforge.net/project/${pkgname}/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('f836e11840fd68b18dbbb8bc47c4a2e1841fa118cc09aab12fe9883b443657f19dba841bd89d1f55bfebf43246cf609d6f6fd6c10f534d42669bb9c6f96209a4')

build () {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix='/usr/'
	make
}
package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install || return 1
	cd "$pkgdir/usr/share/man/man1/"
	rename .gz '' *.gz
}
