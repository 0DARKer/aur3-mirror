pkgname=lordsawar
pkgver=0.2.0
_subver=-pre3	# This one will get romoved when 0.2.0 release will happen
pkgrel=5
pkgdesc="A free, turn-based strategy game in spirit of Warlords II"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/lordsawar/"
license=('GPL3')
depends=('gtkmm' 'sdl_mixer')
makedepends=('pkgconfig' 'gettext' 'intltool' 'libtar' 'boost')
conflicts=('lordsawar-svn')
changelog="ChangeLog"
install="lordsawar.install"
source=("http://download.savannah.gnu.org/releases-noredirect/${pkgname}/${pkgname}-${pkgver}${_subver}.tar.gz")
md5sums=('a6bd170a71e82a75e7f66f0a36d85660')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}${_subver}"
#  patch -Np1 -i ../desktop-icon.patch

# You may want to append to "./configure":
# don't compile editor
#    --disable-editor \
# don't compile play-by-mail
#    --disable-pbm \
# don't compile game list server
#    --disable-gls \
# don't compile game host server
#    --disable-ghs \
# zip save files (experimental)
#    --enable-zipping \
  ./configure \
    --prefix=/usr \
    --disable-static \
    --disable-sdltest || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}${_subver}"
  make DESTDIR="${pkgdir}/" install || return 1
}
