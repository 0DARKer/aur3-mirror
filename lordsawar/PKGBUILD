pkgname=lordsawar
pkgver=0.1.9
pkgrel=1
pkgdesc="A free turn-based strategy game that similar to Warlords II"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/lordsawar/"
license=('GPL3')
depends=('gtkmm' 'sdl_mixer' 'gnet' 'libtar')
makedepends=('pkgconfig' 'boost' 'gettext' 'intltool')
source=("http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz"
	"${pkgname}.desktop"
	"${pkgname}.png")
md5sums=('f6e6b6c05c4494b5029402eb0e5535e0'
         '9b9b571eb0831bd7fa7829c75c9e0c42'
         '6fe8a0c579c34addd247d4230e926dbc')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure \
    --prefix=/usr \
    --disable-static \
    --disable-sdltest || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1

  install -D -m 0644 "${srcdir}/${pkgname}.desktop"	"${pkgdir}/usr/share/applications/${pkgname}.desktop"
  install -D -m 0644 "${srcdir}/${pkgname}.png"		"${pkgdir}/usr/share/pixmaps/${pkgname}.png"
}
