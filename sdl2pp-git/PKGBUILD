pkgname=sdl2pp-git
_pkgname=sdl2pp
__pkgbuildname=libSDL2pp
pkgver=109.93a7754
pkgrel=1
pkgdesc="SDL2 wrapper for C++"
arch=('i686' 'x86_64')
url="https://github.com/AMDmi3/libSDL2pp"
license=('zlib')
depends=('sdl2' 'sdl2_image')
makedepends=('cmake' 'git')
provides=(${_pkgname})
conflicts=(${_pkgname})
source=("git+https://github.com/AMDmi3/libSDL2pp.git")
md5sums=('SKIP')

pkgver() {
cd "${__pkgbuildname}"
echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "${srcdir}/${__pkgbuildname}"
  cmake -DCMAKE_BUILD_TYPE=RELEASE \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_CXX_FLAGS="-w" # necessary, because -Werror was turned on...
  make
}

package() {
  cd "${srcdir}/${__pkgbuildname}"
  make DESTDIR="${pkgdir}" install
}