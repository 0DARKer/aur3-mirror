# Maintainer: epitron <chris@ill-logic.com>
pkgname=camlistore
pkgver=0.7
pkgrel=1
pkgdesc="Camlistore (Content-Addressable Multi-Layer Indexed Storage) is your personal storage system for life."
arch=('i686' 'x86_64')
url="http://camlistore.org/"
license=('Apache')
depends=('sqlite')
makedepends=('go')
source=(https://github.com/bradfitz/$pkgname/archive/$pkgver.tar.gz)
sha256sums=('21d8bf804570d2812c8789373a20257430e0e98e9f950a54b599d2b4442f8351')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	go run make.go
}

package() {
  install -d $pkgdir/usr/bin/
	install -m755 $srcdir/$pkgname-$pkgver/bin/cam* $pkgdir/usr/bin
}
