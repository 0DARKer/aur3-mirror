# Maintainer: Julien Schueller <schueller at phimeca dot com>

pkgname=openturns-doc
pkgver=13.02
pkgrel=1
pkgdesc="OpenTURNS documentation"
arch=('any')
url="http://openturns.org"
license=('GFDL')
makedepends=('subversion' 'cmake' 'tralics' 'libxslt' 'texlive-latexextra' 'texlive-pictures')
#source=(http://downloads.sourceforge.net/openturns/openturns-doc/openturns-doc-$pkgver.tar.bz2)
#md5sums=('30edbeb728d3b375bb1e8f1070488a85')

build() {
  svn co https://svn.openturns.org/openturns-doc/trunk $srcdir/$pkgname-$pkgver
  cd $srcdir/$pkgname-$pkgver
  cmake . -DCMAKE_INSTALL_PREFIX=$pkgdir/usr \
          -DUSE_OPENTURNS=OFF
  make
}


package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}