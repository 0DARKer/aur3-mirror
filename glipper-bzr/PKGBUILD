pkgname='glipper-bzr'
pkgver=87
pkgrel=1
pkgdesc="A clipboard history manager"
arch=('i686' 'x86_64')
url="https://launchpad.net/glipper"
license=('GPL2')
depends=('python2>=2.4' 'python-keybinder' 'python-distutils-extra' 'pygtk' 'python-appindicator' 'pyxdg')
optdepends=('pycrypto')
provides=('glipper')
conflicts=('glipper')
replaces=('glipper')

build() {
  cd "$startdir"
  python2 ./setup.py install --prefix=/usr --root=$pkgdir/
}
