pkgname=copyq-plugin-itemweb
_realname=CopyQ
pkgver=1.7.1
pkgrel=1
pkgdesc="Clipboard manager with searchable and editable history. Itemweb plugin."
url="https://github.com/hluk/CopyQ"
depends=('qt' 'qtwebkit' 'copyq')
makedepends=('cmake')
license=('GPL3')
arch=('i686' 'x86_64')
provides=('copyq-plugin-itemweb')
source=("https://github.com/hluk/$_realname/archive/v${pkgver}.tar.gz")
md5sums=('a487b6a237ed966285b4cde27587c624')

build() {
    mkdir $srcdir/build
    cd $srcdir/build
    cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr $srcdir/$_realname-$pkgver
    make itemweb
}

package() {
    cd $srcdir/build
    install -Dm755 plugins/libitemweb.so $pkgdir/usr/lib/copyq/plugins/libitemweb.so
    rm -rf $srcdir/build
}

