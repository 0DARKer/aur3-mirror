# Contributor: Cedric GESTES <ctaf42@gmail.com>

pkgname=boost-locale
pkgver=3.2.0
pkgrel=0
pkgdesc="boost locale. This is not yet part of boost"
arch=('i686' 'x86_64')
url="http://cppcms.sourceforge.net/boost_locale/html/index.html"
license=('GPL')
depends=()
makedepends=('cmake' 'boost')
source=("http://sourceforge.net/projects/cppcms/files/boost_locale/boost_locale_for_review.tar.bz2")
md5sums=('4302adbbf9c66473542446687621a86f')

build() {
	cd ${srcdir}/boost_locale_for_review
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make || return 1
}

package() {
	cd ${srcdir}/boost_locale_for_review
	make DESTDIR=${pkgdir} install || return 1
}
