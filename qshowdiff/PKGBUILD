# Maintainer: Igor Dejanovic <igor DOT dejanovic AT gmail DOT com>
# Contributor: Igor Dejanovic <igor DOT dejanovic AT gmail DOT com>
pkgname=qshowdiff
pkgver=1.1
pkgrel=2
pkgdesc="Diff visualization tool"
arch=('i686' 'x86_64')
url="http://www.danfis.cz/projects/qshowdiff.html"
license=('GPL')
depends=('qt')
source=("http://www.danfis.cz/projects/qshowdiff/qshowdiff-$pkgver.tar.gz"
		"qshowdiff.patch")
md5sums=('8f515747b5a98abd33639c29ca536b8c'
         '5e867aa68da5a524ccf640613115e85b')

build() {

	cd ${srcdir}/${pkgname}-${pkgver}
	patch -p1 < ${srcdir}/qshowdiff.patch || return 1
	make DEFAULT_CODEC=utf-8 || return 1
	mkdir -p ${pkgdir}/usr/{bin,man/man1} || return 1
	make PREFIX=${pkgdir}/usr install || return 1

}

