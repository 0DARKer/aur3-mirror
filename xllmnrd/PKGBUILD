# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=xllmnrd
pkgver=1.2.0
pkgrel=1
pkgdesc='An IPv6 LLMNR responder daemon'
arch=('i686' 'x86_64')
url="http://www.vx68k.org/xllmnrd"
license=('GPL3')
depends=('glibc')
source=("http://downloads.sourceforge.net/project/xllmnrd/xllmnrd-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/xllmnrd-${pkgver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/xllmnrd-${pkgver}"
	make DESTDIR="$pkgdir" install
}

md5sums=('d4706a28d39f416c4246c0d67cc9254c')
