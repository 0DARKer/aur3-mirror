# Mantainer: Sergio Jimenez Herena <crisisinaptica at gmail dot com>

pkgname=urw
pkgver=3.15
pkgrel=1
pkgdesc="UnReal World is a unique low-fantasy roguelike game set in the far north during the late Iron-Age."
arch=('i686' 'x86_64')
url='http://www.jmp.fi/~smaarane/urw.html'
license=('custom: shareware')
groups=('games')
case "$CARCH" in
	i686)	depends=('gcc-libs' 'sdl_image' 'sdl_mixer')
		source=("http://material.lahnarecords.fi/urw/linux/ubuntu/11.10/pool/u/urw/urw_3.15_i386.deb" 'LICENSE')
		md5sums=('c60811906f8193bb280d5aac3287a5ca' '7f598554cb71851aa96acc84addb5fd6')
		_arch=i386;;

	x86_64)	depends=('gcc-libs-multilib' 'sdl_image' 'sdl_mixer')
		source=("http://material.lahnarecords.fi/urw/linux/ubuntu/11.10/pool/u/urw/urw_3.15_amd64.deb" 'LICENSE')
		md5sums=('3c149672bb5717157320d3d0d84629ca' '7f598554cb71851aa96acc84addb5fd6')
		_arch=amd64;;
esac
_orgpkg="${pkgname}_${pkgver}_${_arch}.deb"
noextract=("${_orgpkg}")
install="urw.install"
build() {
	cd "$srcdir"

	#Extract data files
	ar p "${_orgpkg}" data.tar.gz | tar xz

	#Delete debian specific files
	rm -r "usr/share/doc"

	# Copy game files
	mkdir "${pkgdir}/usr"
	cp -R "usr/" "${pkgdir}"

	# Install license file
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
