# Mantainer: Sergio Jimenez Herena <crisisinaptica at gmail dot com>

pkgname=urw
pkgver=3.16beta
pkgrel=1
pkgdesc="UnReal World is a unique low-fantasy roguelike game set in the far north during the late Iron-Age."
arch=('i686' 'x86_64')
url='http://www.jmp.fi/~smaarane/urw.html'
license=('custom: donationware')
groups=('games')
case "$CARCH" in
	i686)	depends=('gcc-libs' 'sdl_image' 'sdl_mixer')
		source=("http://material.lahnarecords.fi/urw/linux/ubuntu/12.04/pool/u/urw/urw_3.16beta_i386.deb" 'LICENSE')
		md5sums=('183cc3965a89e190f676b779d77ae558' '2650bd3ddd53edde625300397a14f209')
		_arch=i386;;

	x86_64)	depends=('gcc-libs-multilib' 'sdl_image' 'sdl_mixer')
		source=("http://material.lahnarecords.fi/urw/linux/ubuntu/12.04/pool/u/urw/urw_3.16beta_amd64.deb" 'LICENSE')
		md5sums=('0bea39be795f7fa6e09f8b9b8ef3d958' '2650bd3ddd53edde625300397a14f209')
		_arch=amd64;;
esac
_orgpkg="${pkgname}_${pkgver}_${_arch}.deb"
noextract=("${_orgpkg}")
install="urw.install"
build() {
	cd "$srcdir"

	#Extract data files
	ar p "${_orgpkg}" data.tar.gz | tar xz

	#Delete debian specific files
	rm -r "usr/share/doc"

	# Copy game files
	mkdir "${pkgdir}/usr"
	cp -R "usr/" "${pkgdir}"

	# Install license file
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
