# AUR Category: devel

pkgname=ketchup
pkgver=0.9.8
pkgrel=2
pkgdesc="Tool for updating or switching between versions of the Linux kernel source."
url="http://www.selenic.com/ketchup"
license="GPL"
arch=('i686' 'x86_64')
depends=('python2')
source=(http://www.selenic.com/ketchup/$pkgname-$pkgver.tar.bz2)
md5sums=('6fbe53beac455245e1e8ae92acdccbcc')

build() {
  cd $startdir/src
  sed -i 's@#!/usr/bin/python@#!/usr/bin/python2@g' ketchup
  install -D -m755 ketchup	$startdir/pkg/usr/bin/ketchup
  install -D -m644 ketchup.1	$startdir/pkg/usr/man/man1/ketchup.1
}
