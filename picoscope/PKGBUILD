# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Alexandre Bique <>
pkgname=picoscope
pkgver=6.8.5
pkgrel=6
pkgdesc="picotech oscilloscope"
arch=('x86_64')
url="http://www.picotech.com/linux.html"
license=('GPL')
groups=()
depends=(mono mono-tools)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=picoscope.install
changelog=
source=(
  "http://labs.picotech.com/debian/pool/main/p/${pkgname}/${pkgname}_${pkgver}-4r27_all.deb"
  "picoscope.install"
  "95-pico.rules")
md5sums=('24edd69179b88c25eacb9925f901683f'
         'cf48e4f79d7207fce0a4fd01b94328c7'
         'afedfca88c003ead013c18f26f789fd4')
noextract=()

build() {
  echo
}

package() {
  mkdir -p $startdir/pkg/$pkgname/etc/udev/rules.d/
  install -m644 95-pico.rules $startdir/pkg/$pkgname/etc/udev/rules.d/
  dpkg --extract picoscope_6.8.5-4r27_all.deb $startdir/pkg/$pkgname
  chmod -R go-w $startdir/pkg/$pkgname
  chown -R root:root $startdir/pkg/$pkgname
}

# vim:set ts=2 sw=2 et:
