pkgname=kdepim4-runtime-svn
pkgver=1198068
pkgrel=1
pkgdesc='KDE PIM Runtime Environment'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('kdepimlibs4-svn' 'kdebase4-runtime-svn' 'kdelibs4-svn')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'subversion' 'boost')
install='kdepim-runtime.install'
provides=(kdepim-runtime)
conflicts=(kdepim-runtime)

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdepim/runtime
_svnmod=kdepim-runtime

build() {
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/usr
make || return 1
make DESTDIR=$startdir/pkg install || return 1
rm -r $srcdir/$_svnmod-build 
}
