# Maintainer: Bartosz Fe≈Ñski <fenio@debian.org>
pkgname=reaver
pkgver=1.2
pkgrel=1
pkgdesc="brute force attack tool against an access point's WiFi Protected Setup pin number"
arch=('i686' 'x86_64')
url="http://code.google.com/p/reaver-wps/"
license=('GPL')
depends=('libcap')
makedepends=('libcap')
#install=$pkgname.install
source=(http://reaver-wps.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('d49e08583ff004c3a444ba1f7711e4bf')

build() {
	cd $srcdir/$pkgname-$pkgver/src
	./configure --prefix=/usr
	make
}

package() {
	mkdir -p $pkgdir/usr/bin $pkgdir/usr/share/doc/reaver
	cp $srcdir/$pkgname-$pkgver/src/reaver $pkgdir/usr/bin
	cp $srcdir/$pkgname-$pkgver/docs/README $pkgdir/usr/share/doc/reaver
}
