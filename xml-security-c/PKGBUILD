# Maintainer: Kaiting Chen <kaitocracy@gmail.com>

pkgname='xml-security-c'
pkgver='1.5.1'
pkgrel='1'
pkgdesc='Apache C++ XML security libraries'
arch=('i686' 'x86_64')
url='http://santuario.apache.org/'
license=('GPL')
depends=('xerces-c' 'xalan-c' 'openssl')

md5sums=('89a3b378b286d9a8a9b8fdaf929bedcf'
         '2c47c4ec12e8d6abe967aa5e5e99000c')
source=('xalan-c.patch'
  "${url}dist/c-library/$pkgname-$pkgver.tar.gz")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np1 -i $srcdir/xalan-c.patch
  ./configure --prefix=/usr \
    --with-openssl \
    --with-xerces --with-xalan
  make; make DESTDIR="$pkgdir" install
}
