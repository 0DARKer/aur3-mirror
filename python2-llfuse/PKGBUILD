# Maintainer: Brendan MacDonell <macdonellba at gmail dot com>

pkgname=python2-llfuse
_pkgvermajor=0.29
_pkgverminor=7
pkgver=$_pkgvermajor.$_pkgverminor
pkgrel=1
pkgdesc="A set of Python bindings for the low level FUSE API."
arch=('i686' 'x86_64')
url="http://code.google.com/p/python-llfuse/"
license=('LGPL3')
depends=('python2' 'fuse')
options=(!emptydirs)
source=(http://python-llfuse.googlecode.com/files/llfuse-$pkgver.tar.bz2)
md5sums=('9c5c267d91e50f9da6fe1b98d4cb2e32')

build() {
  cd $srcdir/llfuse-$_pkgvermajor

  # TEMPORARY (will be fixed in next upstream release):
  # Unfortunately, we have to strip out some (non-optional!) documentation
  # generation code in order to prevent us from needing a `python2-sphinx'.
  sed -i '/sphinx_cython/d' setup.py
  
  python2 setup.py install --root=$pkgdir/ --optimize=1
}
