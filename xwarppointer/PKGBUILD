# Maintainer: Rick Rein <jeebusroxors@gmail.com>
pkgname=xwarppointer
pkgver=1
pkgrel=1
pkgdesc="CLI utility to move mouse cursor"
arch=('i686' 'x86_64')
license=('GPL')
url=(http://www.ishiboo.com/~nirva/Projects/xwarppointer)
source=(http://www.ishiboo.com/~nirva/Projects/xwarppointer/$pkgname.tar.gz)
md5sums=('49b576f66a6c0eaa47b51fbe33ed493c')

build() {
  cd $startdir/src/$pkgname
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  cp $startdir/src/$pkgname/$pkgname $startdir/pkg/usr/bin/
}
