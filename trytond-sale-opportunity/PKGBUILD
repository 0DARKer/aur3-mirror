pkgname=trytond-sale-opportunity
_pkgname=trytond_sale_opportunity
pkgver=2.2.1
_pkgdir=2.2
pkgrel=1
pkgdesc="The sale_opportunity module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.2' 'trytond-party>=2.2' 'trytond-company>=2.2' 'trytond-product>=2.2' 'trytond-sale>=2.2' 'trytond-account>=2.2' 'trytond-stock>=2.2' 'trytond-currency>=2.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("34f7d0b8695d6c57a2bae8ad4235f8f5")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir
}