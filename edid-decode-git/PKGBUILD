# Maintainer: Jonathan Liu <net147@gmail.com>
pkgname=edid-decode-git
pkgver=20131230
pkgrel=1
pkgdesc="EDID decoder and conformance tester"
url="http://cgit.freedesktop.org/xorg/app/edid-decode/"
arch=('i686' 'x86_64')
license=('MIT')
depends=('glibc')
 
_gitroot="git://anongit.freedesktop.org/xorg/app/edid-decode"
_gitname=edid-decode
 
build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone --depth=1 "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/$_gitname"
  make
}
 
package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir" install
  install -d -m 755 "$pkgdir/usr/share/licenses/$pkgname"
  sed -n '1,/^$/p' edid-decode.c | head -n -2 > "$pkgdir/usr/share/licenses/$pkgname/LICENSE" 
}

# vim:set ts=2 sw=2 et:
