# Maintainer: jdarch <jda.cloud plus archlinux at gmail.com>
pkgname=amdlibm
pkgver=3.0.2
pkgrel=1
pkgdesc="AMD LibM Library for Linux"
arch=("x86_64")
url="http://developer.amd.com/tools-and-sdks/cpu-development/libm/"
license=(custom)

source=("http://developer.amd.com/wordpress/media/download.php?f=YW1kbGlibTMuMC4ybGluNjQudGFyLmd6")
md5sums=('2bb3a62a1d07fccfb1b6d2c0ce023725')
sha512sums=('80ee696334346e33c989c5b85c69ae7b7b036823db7de10130c07ff9d6ae284e5b01ee3ce2c9bad228d4c746fc128055c2ce342df9d7a4570eadf331449f2e5d')


package(){
	mkdir -p $pkgdir/usr/share/licenses/amdlibm
	mkdir -p $pkgdir/usr/include
	mkdir -p $pkgdir/usr/lib
	mkdir -p $pkgdir/opt/amdlibm/examples

	cp ${srcdir}/amdlibm-3-0-2/lib/static/*			${pkgdir}/usr/lib/
	cp ${srcdir}/amdlibm-3-0-2/lib/dynamic/*		${pkgdir}/usr/lib/

	cp ${srcdir}/amdlibm-3-0-2/include/*			${pkgdir}/usr/include/
	cp ${srcdir}/amdlibm-3-0-2/examples/*			${pkgdir}/opt/amdlibm/examples/
	cp ${srcdir}/amdlibm-3-0-2/ReleaseNotes.txt		${pkgdir}/opt/amdlibm/

	rm ${pkgdir}/opt/amdlibm/examples/build_and_run.bat

	install -D -m644 ${srcdir}/amdlibm-3-0-2/LICENSE.pdf	${pkgdir}/usr/share/licenses/amdlibm/LICENSE.pdf
}
