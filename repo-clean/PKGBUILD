# Contributor: Artyom Smirnov <smirnoffjr@gmail.com>
pkgname=repo-clean
pkgver=0.1.3
pkgrel=1
pkgdesc="Clean utility for Pacman repository"
arch=('i686' 'x86_64')
url="http://code.google.com/p/repo-clean/"
license=('GPL')
depends=('pacman' 'boost') 
makedepends=('scons>=0.98' 'gcc')
source=(http://repo-clean.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('e568bc42e854b262256ad60caec52a52')

build() {
  mkdir $pkgdir/usr
  cd "$srcdir/$pkgname-$pkgver"
  scons || return 1
  cp -rf dist/* $pkgdir/usr || return 1
}

