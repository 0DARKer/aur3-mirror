pkgname=udig
pkgver=1.3.2
pkgrel=1
pkgdesc="User-friendly Desktop Internet GIS"
arch=('i686' 'x86_64')
[ "$CARCH" = "i686"   ] && ARCH=x86
[ "$CARCH" = "x86_64" ] && ARCH=x86_64
url="http://udig.refractions.net"
license=('LGPL')
source=(http://udig.refractions.net/files/downloads/${pkgname}-${pkgver}.linux.gtk.${ARCH}.zip)
md5sums=('5b62b93967b1653654bdee88043824b8')
[ "$CARCH" = "x86_64" ] && md5sums=('58bb89c80e1d8990f1224e8942b3d6db')
#depends=('openjdk6')

build() {
   cd $startdir
   mkdir -p $startdir/pkg/opt $startdir/pkg/usr/bin
   cp -ar ${startdir}/src/${pkgname} $startdir/pkg/opt/${pkgname}
   rm -f $startdir/pkg/opt/${pkgname}/udig
   ln -s $startdir/pkg/opt/udig/udig.sh  $startdir/pkg/usr/bin/udig
   #install -m 755 $startdir/pkg/opt/udig/udig*  $startdir/pkg/usr/bin
}
