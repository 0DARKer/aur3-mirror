# Maintainer: Geoffrey Teale <tealeg@stop-squark>
pkgname=bin32-redshift  
pkgver=1.5
pkgrel=1
pkgdesc="Redshift adjusts the color temperature of your screen according to your surroundings. This may help your eyes hurt less if you are working in front of the screen at night with french traduction."
url="http://jonls.dk/redshift/"
arch=('x86_64')
license=('GPL3')
depends=('lib32-libxxf86vm' 'lib32-gconf' 'lib32-dbus-glib' 'pyxdg')
optdepends=('python: gtk-redshift (Redshift icon in the system tray)'
  'hicolor-icon-theme: icon')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/redshift-$pkgver.tar.bz2 )
md5sums=('b6023a7d64fa9e4fe76a1bfc99ef3a85')

build() { 


  cd $startdir/src/redshift-$pkgver/
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}