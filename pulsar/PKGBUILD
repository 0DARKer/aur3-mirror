# Dmitri -- <dimusixus@gmail.com>
pkgname=pulsar
pkgver=0.92
pkgrel=4
pkgdesc="Cloud player vk.com"
arch=(any)
url="http://forum.ubuntu.ru/index.php?topic=203220.0"
license=('custom')
depends=('qt' 'libqxt' 'qtgstreamer-git')
source=('http://ppa.launchpad.net/yuberion/pulsar/ubuntu/pool/main/p/pulsar/pulsar_0.92-4.tar.gz')
md5sums=('1df4c1079cac0781ab17363a663d6f80')


build() {
    cd $srcdir/$pkgname/src
    qmake
    make
}

package() {
  cd "$srcdir/$pkgname/src"
  make INSTALL_ROOT="${pkgdir}" install
}
