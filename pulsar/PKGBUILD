# Dmitri -- <dimusixus@gmail.com>
pkgname=pulsar
pkgver=0.92
pkgrel=6
pkgdesc="Cloud player vk.com"
arch=(any)
url="http://forum.ubuntu.ru/index.php?topic=203220.0"
license=('custom')
depends=('qt' 'libqxt' 'qtgstreamer-git')
source=('http://ppa.launchpad.net/yuberion/pulsar/ubuntu/pool/main/p/pulsar/pulsar_0.92-6.tar.gz')
md5sums=('420aa26cfb0c060a0fc1e2fcd143f048')


build() {
    cd $srcdir/$pkgname/src
    qmake
    make
}

package() {
  cd "$srcdir/$pkgname/src"
  make INSTALL_ROOT="${pkgdir}" install
}
