pkgname='perl-mock-quick'
pkgver='1.001'
pkgrel='1'
pkgdesc="Quickly mock objects and classes, even temporarily replace them,
side-effect free."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-exporter-declare>=0.103')
makedepends=('perl-fennec-lite>=0.004' 'perl-test-exception>=0.29')
url='http://search.cpan.org/dist/Mock-Quick'
source=('http://search.cpan.org/CPAN/authors/id/E/EX/EXODIST/Mock-Quick-1.001.tar.gz')
md5sums=('c47189dc4fa9cb84ff02c89eec97cbe8')

build() {
  local PERL=/usr/bin/perl DIST_DIR="${srcdir}/Mock-Quick-1.001"

  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$DIST_DIR"
    $PERL Build.PL
    $PERL Build
    $PERL Build test
    $PERL Build install
  )

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

