# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=i3ipc-lua
_gitname=i3ipc-lua
pkgver=2014.03.09.gff1611d
pkgrel=1
epoch=
pkgdesc="An improved Lua library to control i3wm"
arch=('i686' 'x86_64')
url="https://github.com/acrisci/i3ipc-lua"
license=('GPL3')
groups=()
depends=('i3ipc-glib' 'lua-lgi')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git://github.com/acrisci/i3ipc-lua.git")
noextract=()
md5sums=("SKIP")

pkgver() {
    cd "${srcdir}/${_gitname}"
    git log -1 --format="%cd.g%h" --date=short | sed 's/-/./g'
}

build() {
    cd "$srcdir/$_gitname"
    ./autogen.sh PREFIX=/usr
    make
}

package() {
    cd "$srcdir/$_gitname"
	make DESTDIR="$pkgdir/" install
}
