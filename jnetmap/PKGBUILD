# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>
# Contributor: Christopher Rogers <slaxemulator@gmail.com>

pkgname=jnetmap
pkgver=0.3.3.5
pkgrel=1
pkgdesc="Make a image of your network"
arch=('any')
url="http://www.rakudave.ch/?q=node/38"
license=('GPL3')
depends=('java-runtime')
source=(http://www.rakudave.ch/userfiles/java/jNetMap.jar)
md5sums=('0c4c827393f282e98a67a589f27c0fbb')

build() {
  cd ${srcdir}

  install -D -m644 jNetMap.jar ${pkgdir}/usr/share/java/$pkgname/$pkgname.jar || return 1

# executable file
  install -d ${pkgdir}/usr/bin
  echo "#!/bin/bash" > ${pkgdir}/usr/bin/$pkgname || return 1
  echo "java -jar /usr/share/java/jnetmap/jnetmap.jar" >> ${pkgdir}/usr/bin/$pkgname || return 1
  chmod +x ${pkgdir}/usr/bin/$pkgname || return 1
}
