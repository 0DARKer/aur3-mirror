pkgname=iceplayer
pkgver=4.03
pkgrel=1
pkgdesc="A simple music player"
license=('GPL')
arch=('i686' 'x86_64')
groups=(multimedia)
url="http://jasy.ice.blog.163.com"
depends=('gstreamer0.10-ffmpeg' 'gstreamer0.10-ugly' 'mpfr' 'glib2' 'wget')
source=($pkgname-$pkgver.tar.bz2)
md5sums=('fa848681850e95fe973c8ff43502b27d') #generate with 'makepkg -g'

build() {
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir"/usr install
}
