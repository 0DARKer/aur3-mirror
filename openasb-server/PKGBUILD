pkgname=openasb-server
pkgver=0.7.95
pkgrel=1
pkgdesc="Software to manage LAN-House and Cyber ​​Café (Server)."
arch=('any')
url="http://www.openasb.com/"
license=('GPL v2')
depends=('gambas3-runtime' 'gambas3-gb-image' 'gambas3-gb-qt4' 'gambas3-gb-form' 'gambas3-gb-crypt' 'gambas3-gb-db' 'gambas3-gb-db-form' 'gambas3-gb-desktop' 'gambas3-gb-form-dialog' 'gambas3-gb-settings' 'gambas3-gb-net' 'gambas3-gb-net-curl' 'gambas3-gb-qt4-ext' 'gambas3-gb-qt4-webkit' 'gambas3-gb-sdl-sound' 'gambas3-gb-v4l' 'gambas3-gb-web')

md5sums=('89527cc0795abab52beba780b8a667ca') 
source=('http://www.openasb.com/testes/ubuntu/openasb_0.7.95-0ubuntu1_all.deb')


package() {

    cd ${srcdir}/
    tar Jxvf  data.tar.xz -C .
    
    install -d $pkgdir/{usr/bin,usr/share}
    cp -a $srcdir/usr/bin/* $pkgdir/usr/bin/
    
    install -Dm655 $srcdir/usr/share/pixmaps/openasb.png $pkgdir/usr/share/pixmaps/openasb.png
    install -Dm655 $srcdir/usr/share/applications/openasb.desktop $pkgdir/usr/share/applications/openasb.desktop

   
} 

    
    



