# Maintainer: Ramana Kumar <firstname.lastname@gmail.com>
pkgname=gitview
pkgver=2.6.12
pkgrel=1
pkgdesc='A GTK based repository browser for git'
arch=('i686' 'x86_64')
url='http://gitview.sourceforge.net'
license=('GPL')
depends=(git pygtk pygtksourceview2)
makedepends=()
source=()
md5sums=()
build() {
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/doc/gitview
  ln -s /usr/share/git/gitview/gitview $pkgdir/usr/bin/gitview || return 1
  ln -s /usr/share/git/gitview/gitview.txt $pkgdir/usr/share/doc/gitview/gitview.txt || return 1
}
