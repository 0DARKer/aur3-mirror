# Contributor: Jesse Jaara <jesse.jaara@gmail.com>

pkgname=ffmpeg-webm
pkgver=23210
pkgrel=1
pkgdesc="Complete and free Internet live audio and video broadcasting solution for Linux/Unix"
arch=('i686' 'x86_64')
url="http://ffmpeg.mplayerhq.hu/"
license=('GPL')
depends=('lame' 'sdl' 'zlib' 'x264>=20100207' 'libtheora' 'opencore-amr' 'libvpx-git')
makedepends=('subversion')
provides=("ffmpeg" "qt-faststart")
conflicts=('ffmpeg')
source=('http://webm.googlecode.com/files/mplayer-vp8-encdec-support-r3.tar.bz2')

build() {
  cd "$srcdir"

  svn checkout --ignore-externals -r 23210 svn://svn.ffmpeg.org/ffmpeg/trunk ffmpeg
  svn checkout -r 31186 svn://svn.ffmpeg.org/mplayer/trunk/libswscale ffmpeg/libswscale


  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf ffmpeg-build
  cp -r ffmpeg ffmpeg-build
  cd ffmpeg-build

  patch -p0 -i ../ffmpeg@23210_libvpx@6cd4a10-VP8__WebM.diff || return 1

  ./configure \
  --prefix=/usr \
  --enable-gpl \
  --enable-version3 \
  --enable-libmp3lame \
  --enable-libx264 \
  --enable-libopencore-amrnb \
  --enable-libopencore-amrwb \
  --enable-libtheora \
  --enable-postproc \
  --enable-shared \
  --enable-pthreads \
  --enable-x11grab \
  --enable-libvpx  \
  --arch=`uname -m` \
  || return 1

  make || return 1
  make doc/ff{mpeg,play,server}.1 || return 1

  make DESTDIR="$pkgdir" install || return 1
  make DESTDIR="$pkgdir" install-man || return 1

  make tools/qt-faststart || return 1
  cp -a tools/qt-faststart $pkgdir/usr/bin
}
md5sums=('5907ce42aa0113d8be76fadb9f88a030')
