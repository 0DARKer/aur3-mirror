_pkgsourcename=libnl
pkgname=lib32-$_pkgsourcename
pkgver=1.1
pkgrel=3
pkgdesc="Library for applications dealing with netlink sockets (32 Bit)"
url="http://www.gnu.org/software/libc"
license=('GPL', 'LGPL')
arch=(x86_64)
depends=("lib32-glibc")
source=(http://www.mirrorservice.org/sites/ftp.archlinux.org/core/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)
md5sums=('f7c84df3d7e9f605c155db4ac8bdf389')

build() {
  cd "${srcdir}" || return 1
  install -dm755 "${pkgdir}/opt/lib32/usr/lib" || return 1
  cp -dp usr/lib/*.so* "${pkgdir}/opt/lib32/usr/lib" || return 1
}

