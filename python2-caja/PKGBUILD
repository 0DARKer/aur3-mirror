pkgname=python2-caja
pkgrname=python-caja
pkgver=1.6.0
pkgrel=1
release=1.6
pkgdesc="Python binding for Cahja components"
arch=('i686' 'x86_64')
url="http://mate-desktop.org/"
license="GPL"
groups=('mate-extras')
makedepends=('pkgconfig' 'mate-desktop' )
depends=('mate-file-manager' 'pygtk' 'python2')
options=('!libtool' '!emptydirs')
source=(http://pub.mate-desktop.org/releases/${release}/${pkgrname}-${pkgver}.tar.xz)
sha256sums=('2a696f24dd3b34609117d66ac4a768409419964fa21db300bdb19d042e513990')

build() {
	export PYTHON=python2
	cd "${srcdir}/${pkgrname}-${pkgver}"

	./autogen.sh --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgrname}-${pkgver}"

	make DESTDIR="$pkgdir" install || return 1
}
