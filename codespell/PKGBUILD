# Maintainer: Anatol Pomozov <anatol@google.com>
# Creator: Lucas De Marchi <lucas.de.marchi@gmail.com>
pkgname=codespell
pkgver=1.5
pkgrel=2
pkgdesc="Fix common misspellings in source code"
url="https://github.com/lucasdemarchi/codespell"
license=('GPL')
arch=(any)
depends=(python)
source=("$url/archive/v$pkgver.tar.gz"
        "improve_usability.diff") # based on changes proposed upstream
sha1sums=('e039ae95ba138a87312acb67ebaaed1088a445de'
          '7c4f69a686c14846ccd427942418eb6da50928f8')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  patch < ../improve_usability.diff 
  make install DESTDIR=$pkgdir
}
