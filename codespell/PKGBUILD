pkgname=codespell
pkgver=1.5
pkgrel=1
pkgdesc="Fix common misspellings in source code"
url="https://github.com/lucasdemarchi/codespell"
license=('GPL')
arch=(any)
depends=(python)
source=("http://packages.profusion.mobi/codespell/$pkgname-$pkgver.tar.xz")
#source=("$url/archive/v$pkgver.tar.gz")
sha1sums=('fd590787b6d649f58cc7f24cdf4ae028738effb2')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make install DESTDIR=$pkgdir
}
