# Maintainer: Alan Davies <alan.n.davies@gmail.com>

_shortver=1.1.4
_verext=0.14
pkgname=libibverbs
pkgver=${_shortver}_${_verext}
pkgrel=2
pkgdesc="Library providing access to InfiniBand/iWARP hardware verbs protocol"
arch=('i686' 'x86_64')
license=('OpenIB.org BSD')
url="http://www.openfabrics.org"
source=(http://www.openfabrics.org/downloads/libibverbs/${pkgname}-${_shortver}-${_verext}.gb6c138b.tar.gz)
md5sums=('34faf4642f3fb7616e9441fa37e8d7d5')

build() {
  cd "${srcdir}/${pkgname}-${_shortver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make -j1 DESTDIR="${pkgdir}" install || return 1
}
