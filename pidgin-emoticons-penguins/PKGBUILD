pkgname=pidgin-emoticons-penguins
pkgver=1.0
pkgrel=3
pkgdesc="Pidgin port of Kadu penguins smileys"
arch=('any')
url="http://www.gnome-look.org/content/show.php/Pidgin+Penguins+Smileys?content=62566"
license=('GPL')
depends=('pidgin')
makedepends=('plowshare')
source=(`[ -f pidgin-penguins-smileys-${pkgver}.tar.bz2 ] && \
        echo pidgin-penguins-smileys-${pkgver}.tar.bz2 || \
        plowdown "http://depositfiles.com/files/d31nk9gs0"`)
md5sums=('7d2d1f60230bd06b5e5d5abe5f0941c5')

build() {
  #cd "$srcdir"
  #plowdown "http://depositfiles.com/files/d31nk9gs0"
  #tar xf pidgin-penguins-smileys-${pkgver}.tar.bz2
  true
}

package() {
  install -d "$pkgdir"/usr/share/pixmaps/pidgin/emotes/penguins
  install -m644 "$srcdir"/penguins/* "$pkgdir"/usr/share/pixmaps/pidgin/emotes/penguins
}

