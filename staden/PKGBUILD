pkgname=staden
pkgver=2.0.0b7
pkgrel=1
pkgdesc="A fully developed set of DNA sequence assembly (Gap4), editing and analysis tools (Spin) for Unix, Linux, MacOSX and MS Windows."
arch=('i686' 'x86_64')
url="http://staden.sourceforge.net/"
license=('BSD')
depends=('staden-io_lib' 'tcl' 'tklib' 'zlib' 'xz' 'libpng' 'iwidgets' 'gcc-libs-multilib')
source=(http://sourceforge.net/projects/staden/files/staden/2.0.0b7/staden-2.0.0b7-src.tar.gz)
md5sums=('9f9ca88b1306db9fa569c64088bf94c0')

build() {
    cd "$srcdir/$pkgname-$pkgver-src/"
    sed -i 's/\/usr\/local\/tklib/\/usr\/lib\/tklib/g' configure
    ./configure --prefix=/usr
    find ./ -name Makefile -type f -exec sed -i 's/$(INSTALL/$(DESTDIR)$(INSTALL/g' {} \;
    find ./ -name Makefile -type f -exec sed -i 's/$(DIST)/$(DESTDIR)$(DIST)/g' {} \;
    make
    make DESTDIR="$pkgdir" install
}
