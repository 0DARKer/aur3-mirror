# Maintainer: Stunts <f.pinamartins@gmail.com>
# Contributor: LoneWolf <lonewolf@xs4all.nl> 
pkgname=staden
pkgver=2.0.0b8
pkgrel=1
pkgdesc="A fully developed set of DNA sequence assembly (Gap4), editing and analysis tools (Spin) for Unix, Linux, MacOSX and MS Windows."
arch=('i686' 'x86_64')
url="http://staden.sourceforge.net/"
license=('BSD')
depends=('staden-io_lib' 'tcl' 'tklib' 'zlib')
optdepends=('iwidgets: gap4 prefinish' 'xz: better gap4 compression' 'libpng: gap4 Report Mutations')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('88307454f8d52a42c37244e10c979292')

build() {
    cd "$srcdir/$pkgname-$pkgver-src/"
    sed -i 's/\/usr\/local\/tklib/\/usr\/lib\/tklib/g' configure
    ./configure --prefix=/usr
    make
    make DESTDIR=$pkgdir install
}
