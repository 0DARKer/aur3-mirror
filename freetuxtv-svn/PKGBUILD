# Maintainer: Bernard Baeyens (berbae) <berbae52 at sfr dot fr>
pkgname=freetuxtv-svn
pkgver=735
pkgrel=2
pkgdesc="WebTV player to watch ADSL TV on the PC"
arch=('i686' 'x86_64')
url="http://code.google.com/p/freetuxtv/"
license=('GPL')
depends=('vlc' 'gtk2' 'sqlite' 'curl' 'libnotify')
makedepends=('subversion' 'intltool')
conflicts=('freetuxtv')
_svntrunk=http://freetuxtv.googlecode.com/svn/trunk/
_svnmod=freetuxtv

build() {
  cd $srcdir

  suffix=$(date +'%Y%m%d%H%M%S')
  [[ -d $_svnmod ]] && mv $_svnmod $_svnmod-$suffix
    
  msg "Connecting to SVN server...."
  svn checkout $_svntrunk $_svnmod

  msg "SVN checkout done or server timeout"
  msg "Starting build..."

  cd $_svnmod

  #
  # BUILD HERE
  #
  NOCONFIGURE=true ./autogen.sh
  ./configure --prefix=/usr --with-gtk=2.0
  make
}

package() {
  cd $srcdir/$_svnmod
  make DESTDIR=$pkgdir install
}

# vim:set ts=2 sw=2 et:
