# Maintainer: Bernard Baeyens (berbae) <berbae52 at sfr dot fr>
pkgname=freetuxtv-svn
pkgver=735
pkgrel=1
pkgdesc="WebTV player to watch ADSL TV on the PC with ISPs Free and SFR."
arch=('i686' 'x86_64')
url="http://code.google.com/p/freetuxtv/"
license=('GPL')
depends=('vlc' 'gtk2' 'sqlite' 'curl' 'libnotify')
makedepends=('subversion' 'intltool')
conflicts=('freetuxtv')
_svntrunk=http://freetuxtv.googlecode.com/svn/trunk/
_svnmod=freetuxtv

build() {
  cd $srcdir
  msg "Connecting to SVN server...."

  if [[ -d $_svnmod/.svn ]]; then
    svn cleanup $_svnmod
    svn revert --recursive $_svnmod
    svn update $_svnmod
  else
    svn checkout $_svntrunk $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting build..."

  cd $_svnmod

  #
  # BUILD HERE
  #
  ./autogen.sh --prefix=/usr --with-gtk=2.0
  make
}

package() {
  cd $srcdir/$_svnmod
  make DESTDIR=$pkgdir install
}

# vim:set ts=2 sw=2 et:
