pkgname=newscycle-font
pkgver=0.4
pkgrel=1
pkgdesc="Regular weight, covers Latin, Greek, and Cyrillic alphabets, plus mathematical symbols"
arch=(any)
url="https://launchpad.net/newscycle/trunk/"
license=('GPL')
depends=(fontconfig)
install=newscycle-font.install
source=(http://launchpad.net/newscycle/trunk/$pkgver/+download/NewsCycle-Regular.ttf
	http://launchpad.net/newscycle/trunk/$pkgver/+download/NewsCycle-Regular.otf)
md5sums=('b97e8c00a92d2eabc57807bfc93a2fd0'
         '1a98a9a321341a567909089c72adfa59')

build() {
  true
}

package() {
  cd "$srcdir/"
  install -Dm0644 NewsCycle-Regular.ttf $pkgdir/usr/share/fonts/TTF/NewsCycle-Regular.ttf
  install -Dm0644 NewsCycle-Regular.otf $pkgdir/usr/share/fonts/OTF/NewsCycle-Regular.otf
}
