arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-io-tty')
makedepends=()
url='http://search.cpan.org/dist/IO-Pty-Easy'
source=('http://search.cpan.org/CPAN/authors/id/D/DO/DOY/IO-Pty-Easy-0.08.tar.gz')
md5sums=('8716fc1de427351f384220f47bc48118')
