pkgname=probability0
pkgver=1.05
pkgrel=1
pkgdesc="A freeware platformer about chance."
arch=('i686')
url="http://forums.tigsource.com/index.php?topic=9224.0"
license=('CCPL:by-nd')
depends=('python2' 'pyglet' 'python-audiere' 'python2-numpy')
source=(http://dl.dropbox.com/u/27951479/probability0-1.05.tar.gz
        probability0)
md5sums=('ae8265559503b34774b236314466103f'
         '7add9d27c38b495ec5257434cbd484fc')

package() {
  #cd "$srcdir/$pkgname-$pkgver"
  #make DESTDIR="$pkgdir/" install
  
  mkdir -p "$pkgdir/usr/share/$pkgname"
  cp -r ""$srcdir/$pkgname-$pkgver/*"" "$pkgdir/usr/share/$pkgname"
  mkdir -p "$pkgdir/usr/bin"
  install probability0 "$pkgdir/usr/bin"
}

