pkgname=python2-keyring
pkgver=1.2
pkgrel=1
pkgdesc="Store and access your passwords safely."
arch=(any)
url="http://pypi.python.org/pypi/keyring"
license=('PSF')
depends=('python2')
replaces=('python-keyring')
source=("http://pypi.python.org/packages/source/k/keyring/keyring-$pkgver.zip")
md5sums=('b5652894d95d44d200388be79ac6be49')
optdepends=('python2-gnomekeyring: Gnome integration' 'kdebindings-python2: Kde integration')

build() {
  cd "$srcdir"
  cd "$srcdir/keyring-$pkgver"
  python2 setup.py build
  python2 setup.py install --root=$pkgdir
  
}

