# Maintainer: Henning Garus <henning.garus@gmail.com>
# Contributor: Patrik Hautala <phloyd@iki.fi>

pkgname=moe
pkgver=1.3
pkgrel=1
pkgdesc="A powerful, 8-bit clean, text editor. Supports ISO-8859-15 and ASCII."
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/moe/moe.html"
license=('GPL')
depends=('ncurses')
makedepends=('texinfo')
install=moe.install
md5sums=(ca057de812a26a2acd34828f833110ab)
source=(http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc 
  make || return 1
  make prefix=$pkgdir/usr sysconfdir=$pkgdir/etc datadir=$pkgdir/usr/share \
    install || return 1
  make DESTDIR=$pkgdir install || return 1
  rm $pkgdir/usr/share/info/dir
}
