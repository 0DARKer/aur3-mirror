# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=skalibs
pkgver=0.46
pkgrel=1
pkgdesc="A utility library for secure, small C development"
url="http://www.skarnet.org/software/skalibs/"
license="Public Domain"
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
arch=('i686')
install=
source=(http://www.skarnet.org/software/skalibs/$pkgname-$pkgver.tar.gz)
md5sums=('96e9e327b335585919b6cc34b8654e8c')

build() {
  cd $startdir/src/prog/$pkgname-$pkgver
  package/compile
  install -d $startdir/pkg/usr/lib/skalibs
  install -m0644 library/* $startdir/pkg/usr/lib/skalibs
  install -d $startdir/pkg/usr/include/skalibs
  install -m0644 include/* $startdir/pkg/usr/include/skalibs
}
