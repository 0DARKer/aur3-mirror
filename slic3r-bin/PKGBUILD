#Maintainer: DaZ <daz.root+arch@gmail.com> 
pkgname=slic3r-bin
pkgrel=1
pkgdesc="An STL-to-GCODE translator for RepRap 3D printers, aiming to be a modern and fast alternative to Skeinforge"
pkgver=0.99
_pkgver="0-9-9"
arch=('i686', 'x86_64')
url=("http://www.slic3r.org")
conflicts=('slic3r'  'slic3r-git')
depends=('perl-wx'  'libpng12')
license=('AGPL3')

if [ "$CARCH" = "i686" ]; then
    _arch='x86'
    _pkg="slic3r-linux-${_arch}-${_pkgver}.tar.gz"
    source=("http://dl.slic3r.org/linux/Linux-${_arch}/${pkgver}/${_pkg}")
    md5sums=('62d4ad5b2576f88920951620dc2cab07')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='x86_64'
    _pkg="slic3r-linux-${_arch}-${_pkgver}.tar.gz"
    source=("http://dl.slic3r.org/linux/Linux-${_arch}/${pkgver}/${_pkg}")
    md5sums=('7a122b617b3ec61781019ab9ad9cbafc')

fi

build()
{
    cd "${srcdir}/Slic3r/"


}


package()
{
    install -d "${pkgdir}/opt"
    cp -R "${srcdir}/Slic3r" "${pkgdir}/opt/slic3r"
    install -d "${pkgdir}/usr/bin"
    ln -s "${pkgdir}/opt/slic3r/bin/slic3r" "${pkgdir}/usr/bin/slic3r"
    cd "${srcdir}"



}
