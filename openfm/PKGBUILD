pkgname=openfm
pkgver=3.0.3.180
pkgrel=2
pkgdesc="Open FM on your PC. Faster access to your favorite stations."
arch=(x86_64)
url=http://open.fm/
license=(Freeware)
depends=('alsa-lib' 'libcanberra' 'libcanberra-pulse' 'xorg-server')
install=$pkgname.install
provides=($pkgname)
source=(http://updates.open.fm/files/elwood/release/linux64)
md5sums=(424aa866525b363e6bfb62932b16ad7c)

package()
{
  mkdir -p $pkgdir/opt/OpenFM
  cp -R $srcdir/OpenFM $pkgdir/opt/
}