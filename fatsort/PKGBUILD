pkgname=fatsort
pkgver=1.0.275
pkgrel=1
pkgdesc="Sorts directory structures of FAT16 and FAT32 file systems"
arch=('i686' 'x86_64')
url="http://fatsort.sourceforge.net/"
license=('GPL')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('f5997bcead09a966ef85f6f33d04fd5f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" SBINDIR=/usr/sbin MANDIR=/usr/share/man/man1 install
}
