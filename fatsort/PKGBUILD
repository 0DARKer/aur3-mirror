pkgname=fatsort
pkgver=0.9.14.1
pkgrel=1
pkgdesc="Sorts directory structures of FAT16 and FAT32 file systems"
arch=('i686' 'x86_64')
url="http://fatsort.berlios.de/"
license=('GPL2')
source=(http://download2.berlios.de/$pkgname/$pkgname-$pkgver-213.tar.gz)

md5sums=('08ea2f2ceb0772a9156461c8c19b5bb2')

build() {
  cd $pkgname-$pkgver-213

  make CFLAGS+=" -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64" || return 1
  make SBINDIR=$pkgdir/usr/sbin MANDIR=$pkgdir/usr/share/man/man1 install
}