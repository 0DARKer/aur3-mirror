pkgname=fatsort
pkgver=0.9.17.269
pkgrel=1
pkgdesc="Sorts directory structures of FAT16 and FAT32 file systems"
arch=('i686' 'x86_64')
url="http://fatsort.sourceforge.net/"
license=('GPL2')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz)

md5sums=('3d04984b08afe8119475d0f1343120db')

build() {
  cd "$pkgname-$pkgver"
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR=$pkgdir SBINDIR=/usr/sbin install
}
