pkgname=dex-editor-git
_gitname="dex"
pkgver=20130410
pkgrel=1
pkgdesc="dex - dextrous text editor. A small and lightweight command line based text editor."
arch=('i686' 'x86_64')
url="http://github.com/tihirvon/dex"
license=('GPL2')
depends=('glibc')
makedepends=('git')
source=("git://github.com/tihirvon/dex.git")
md5sums=('SKIP')

pkgver() {
    cd "$_gitname"
    # use the total number of commits + tag of the last commit
    echo $(git rev-list --count master).$(git rev-parse --short master)
}

build() {
    cd "$_gitname"
    make prefix=/usr DESTDIR="$pkgdir"
}

package() {
    cd "$_gitname"
    make prefix=/usr DESTDIR="$pkgdir" install
}
