# Maintainer: Daniel Escoz <darkhogg[at]gmail[dot]com>
_themename=dhg.zsh-theme
_gitdir="${_themename}_repo"
pkgname=$_themename
pkgver=0.2.0
pkgrel=1
pkgdesc="oh-my-zsh theme used by Daniel Escoz (Darkhogg)"
url="http://github.com/Darkhogg/$_themename"
arch=('any')
license=('GPL3')
depends=('oh-my-zsh-git')
source=("$_gitdir::git+http://github.com/Darkhogg/$_themename#branch=master")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitdir"
  git describe --long --tags | sed -r 's/^v//;s/([^-]*-g)/r\1/;s/-/./g'
}

package() {
  install -D -m644 "$srcdir/$_gitdir/$_themename" "$pkgdir/usr/share/oh-my-zsh/themes/$_themename"
}
