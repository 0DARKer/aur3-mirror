# Maintainer: Serge Zirukin <ftrvxmtrx@gmail.com>

pkgname=ocaml-sqlite3
_pkgname=sqlite3-ocaml
pkgver=2.0.3
pkgrel=1
pkgdesc="SQLite3 bindings for OCaml"
arch=('i686' 'x86_64')
url="http://ocaml.info/software.html"
license=('MIT')
depends=('ocaml' 'ocaml-findlib' 'sqlite3')
makedepends=('ocaml')
source=(https://bitbucket.org/mmottl/sqlite3-ocaml/downloads/$_pkgname-$pkgver.tar.gz)
md5sums=('f2ca551b1327134d12b6176759506dc6')
options=(!makeflags)

_pkgdir="$_pkgname-$pkgver"

build () {
  cd "${srcdir}/${_pkgdir}"

  ./configure --disable-debug --prefix /usr --destdir "$pkgdir"
   make all
}

package() {
  cd "${srcdir}/${_pkgdir}"

  export OCAMLFIND_DESTDIR="$pkgdir$(ocamlfind printconf destdir)"
  mkdir -p "${OCAMLFIND_DESTDIR}/stublibs"
  make install
}
