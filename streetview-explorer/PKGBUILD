pkgname=streetview-explorer
_pkgname=StreetViewExplorer
pkgver=1.0.1
pkgrel=2
epoch=
pkgdesc="View StreetView imagery in 3D"
arch=('any')
url="http://code.google.com/p/streetview-explorer/"
license=('GPL')
groups=()
depends=('libidn' 'libjpeg6')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://streetview-explorer.googlecode.com/files/$_pkgname-$pkgver.tar.gz)
noextract=()
md5sums=() #generate with 'makepkg -g'

build() {
  cd "$srcdir/$_pkgname"
}

#check() {
#  cd "$srcdir/$pkgname-$pkgver"
#  make -k check
#}

package() {
  cd "$srcdir/$_pkgname"
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/bin
  
  cp -R $_pkgname $pkgdir/usr/bin
}

