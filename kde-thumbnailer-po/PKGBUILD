# Maintainer: Artem Sereda <overmind88@gmail.com>

pkgname=kde-thumbnailer-po
pkgver=1.0
pkgrel=1
pkgdesc="Preview image generator plugin for gnu gettext translation"                                                                                      
arch=('i686' 'x86_64')                                                                       
url="http://kde-apps.org/content/show.php/KDE+PO+Thumbnailer?content=142036"                                                  
license=('GPL')                                                    
depends=('gettext')
makedepends=('cmake' 'automoc4')                                                             
source=('http://kde-apps.org/CONTENT/content-files/142036-kde-thumbnailer-po-1.0.tar.bz2')

build () {                                                                                   
                                                                               
 cd ${srcdir}/${pkgname}
 cmake -DCMAKE_INSTALL_PREFIX=/usr                                                           
 make || return 1                                                                            
 make DESTDIR=${pkgdir} install                                                              
}                                                        
md5sums=('3d88a5f156b4fee350de856207833013')
