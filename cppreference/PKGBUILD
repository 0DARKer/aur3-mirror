pkgname=cppreference
pkgver=20140704
pkgrel=1
pkgdesc="A complete reference for the features in the C++ Standard Library. HTML book."
arch=('any')
url="http://en.cppreference.com/"
license=('CCPL:cc-by-sa')
options=('!strip' '!emptydirs')
changelog=Changelog
source=("http://upload.cppreference.com/mwiki/images/3/3f/html_book_${pkgver}.tar.gz")

package() {
    mkdir -p "$pkgdir/usr/share/doc/cppreference"
    mv -t "$pkgdir/usr/share/doc/cppreference/" $srcdir/reference/*
}
sha256sums=('de0d7038763f3b21c075f060614bbb71f0bebdbc387be4761a3e23f21ce1ac66')
