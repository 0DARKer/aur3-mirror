# Maintainer: Tianjiao Yin <youremail@domain.com>
pkgname=cppreference
pkgver=20110918
pkgrel=1
pkgdesc="a complete reference for the features in the C++ Standard Library. "
arch=('any')
url="http://en.cppreference.com/w/cpp"
license=('CCPL:cc-by-sa')
source=(http://upload.cppreference.com/mwiki/images/3/32/cppreference-doc-20110918.tar.gz)
md5sums=('e84e117c14d40bb3edaf3669cb7e98c7')

build() {
  cd $srcdir/cppreference-doc-*
  mv reference cppreference
  cd cppreference
  mv en.cppreference.com en
  rm upload.cppreference.com -rf
  cd ..
  mkdir -p "$pkgdir/usr/share/doc"
  mv cppreference "$pkgdir/usr/share/doc"
}

# vim:set ts=2 sw=2 et:
