# Maintainer: Laszlo Papp <djszapi2 at gmail com>

pkgname=pykeylogger
pkgver=1.2.0
pkgrel=1
pkgdesc="A simple keylogger written in python"
url="http://pykeylogger.sourceforge.net/"
arch=('i686')
license=('GPL')
depends=('python' 'python-configobj' 'pil' 'pygtk' 'python-xlib')
source=(http://downloads.sourceforge.net/project/pykeylogger/pykeylogger/1.2.0/pykeylogger-1.2.0_src.zip)
md5sums=('46cb393ae99609a69f980970c1ed42a6')

build() {
    cd $srcdir/$pkgname-$pkgver
    python setup.py build || return 1
    python setup.py install --root=${pkgdir} --prefix=/usr || return 1
    install -Dm755 keylogger.pyw $pkgdir/usr/bin/keylogger.pyw
}
