# Maintainer: flow
# Contributor: flow

pkgname=wifiguard
pkgver=1.0.1
pkgrel=1
pkgdesc="an essential tool for everyone running a small WiFi network and striving to keep it secure"
arch=('i686' 'x86_64')
url="http://www.softperfect.com/products/wifiguard/"
license=('commercial')
depends=('pango' 'cairo' 'libpng' 'libstdc++5')

if [ "$CARCH" = "i686" ]; then
    _arch='i386'
    source=("http://www.softperfect.com/download/${pkgname}/${pkgname}_${pkgver}_linux_${_arch}.tar.gz")
    md5sums=('2d30fb1954d726e4150addadfff75f2b')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='amd64'
    source=("http://www.softperfect.com/download/${pkgname}/${pkgname}_${pkgver}_linux_${_arch}.tar.gz")
    md5sums=('230ddaa9c441ef2cebb721f3bf37b719')
    
fi

package() {
    install -d ${pkgdir}/usr/bin
    install -D -m755 ${srcdir}/WiFiGuard ${pkgdir}/usr/bin/wifiguard
}
