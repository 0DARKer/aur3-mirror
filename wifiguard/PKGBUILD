# Maintainer: flow
# Contributor: flow

pkgname=wifiguard
pkgver=1.0.0
pkgrel=2
pkgdesc="an essential tool for everyone running a small WiFi network and striving to keep it secure"
arch=('i686' 'x86_64')
url="http://www.softperfect.com/products/wifiguard/"
license=('commercial')
depends=('pango' 'cairo' 'libpng' 'libstdc++5')

if [ "$CARCH" = "i686" ]; then
    _arch='i386'
    source=("http://www.softperfect.com/download/wifiguard/wifi-guard-${pkgver}.${_arch}.tar.gz")
    md5sums=('354231a8bf74f036024451457231df04')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='amd64'
    source=("http://www.softperfect.com/download/wifiguard/wifi-guard-${pkgver}.${_arch}.tar.gz")
    md5sums=('ed5afcf502472d2b0d836e2869bcfecf')
fi

package() {
    install -d ${pkgdir}/usr/bin
    install -D -m755 ${srcdir}/WiFiGuard ${pkgdir}/usr/bin/wifiguard
}
