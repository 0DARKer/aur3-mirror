# Maintainer: nmeum <nmeum-aur@8pit.net>

pkgname=tpm
pkgver=1.0
pkgrel=1
pkgdesc='A tiny password manager.'
url='http://github.com/nmeum/tpm'
license=('GPL')
arch=('any')
depends=('bash' 'gnupg')
source=("https://github.com/nmeum/tpm/archive/1.0.tar.gz")
sha256sums=('abfe802db5384b0ba02bd503c0d31e0ebc6834899af224744fef9b601bd74f7a')

package() {
  cd "${srcdir}/${pkgname}-$pkgver"
  make PREFIX=/usr DESTDIR="${pkgdir}" install
  install -D -m644 zsh_completion "$pkgdir/usr/share/zsh/site-functions/_${pkgname}"
}
