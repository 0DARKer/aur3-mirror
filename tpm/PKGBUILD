# Maintainer: nmeum <nmeum-aur@8pit.net>

pkgname=tpm
pkgver=1.1
pkgrel=1
pkgdesc='A tiny password manager.'
url='http://github.com/nmeum/tpm'
license=('GPL')
arch=('i686' 'x86_64')
depends=('bash' 'gnupg')
makedepends=('perl')
source=("https://github.com/nmeum/${pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('dfedeb57805e6af7926e9f44cd8b365c377d695f5668d4f0650a93efb6266815')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR="${pkgdir}" install
  install -D -m644 zsh_completion "${pkgdir}/usr/share/zsh/site-functions/_${pkgname}"
}
