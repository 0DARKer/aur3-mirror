# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Jan GUTH <prometheus@c3l.lu>
pkgname=yafc
pkgver=1.2.4
pkgrel=1
pkgdesc="Yet Another FTP Client for the console"
arch=('any')
url="http://yafc-ftp.com/"
license=('GPL')
source=(http://yafc-ftp.com/upload/$pkgname-$pkgver.tar.xz)
sha512sums=('a189b4fa6f4f6609a80bb7c0361e99f13fb76876b46adf85f62354338e71989ae35ca76717826e4c6cfc8304a7eefe57fc51b1a6b8983936c1da39c644f099e5')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
