pkgname=dhex
pkgver=0.66
pkgrel=1
pkgdesc="An ncurses-based hexeditor with a diff mode"
arch=('i686' 'x86_64')
url="http://www.dettus.net/dhex/"
license=('GPL')
depends=('ncurses')
source=("http://www.dettus.net/dhex/${pkgname}_${pkgver}.tar.gz")
md5sums=('304a91cfd9481b2ddf418f3a943190e1')

build() {
  cd "${srcdir}/${pkgname}_${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}_${pkgver}"
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/man/man1"
  mkdir -p "${pkgdir}/usr/man/man5"
  make DESTDIR="${pkgdir}/usr" install
}

# vim:set ts=2 sw=2 et:
