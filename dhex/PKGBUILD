# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Contributor: Vladimir Grichina <vgrichina@gmail.com>
pkgname=dhex
pkgver=0.55
pkgrel=1
pkgdesc="DHEX is just another Hexeditor with a Diff-mode for ncurses."
arch=('i686' 'x86_64')
url="http://www.dettus.net/dhex/"
license=('GPL')
groups=()
depends=('ncurses')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://www.dettus.net/dhex/${pkgname}_${pkgver}.tar.gz")
noextract=()
md5sums=('8331d8651e882062bc9f62fe6031ba45') #generate with 'makepkg -g'

build() {
  cd "$srcdir/${pkgname}_${pkgver}"
  patch -p1 -i ../Makefile.patch || return 1
  make || return 1
  mkdir -p "$pkgdir/usr/bin" && (cp "$srcdir/${pkgname}_${pkgver}/dhex" "$pkgdir/usr/bin" || return 1)
}

# vim:set ts=2 sw=2 et:
