# Contributor: Fabio Volpe <volpefabio@gmail.com>
pkgname=chipmunk
pkgver=5.2.0
pkgrel=1
pkgdesc="A high-performance 2D rigid body physics library"
arch=('i686' 'x86_64')
url="http://code.google.com/p/chipmunk-physics/"
license=('MIT')
groups=()
depends=('mesa' 'freeglut' 'libxmu' 'libxext')
makedepends=('cmake')
source=(http://files.slembcke.net/chipmunk/release/Chipmunk-5.x/Chipmunk-$pkgver.tgz)
md5sums=('a467024e389e41b8ef0a42464d4018f5')

build() {
  cd "$startdir/src/Chipmunk-$pkgver"
  find . -name "._*" -delete
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make || return 1
  mkdir -p $pkgdir/usr/share/licenses/chipmunk
  cp LICENSE.txt $pkgdir/usr/share/licenses/chipmunk/LICENSE
  make DESTDIR=$pkgdir install 
}
