pkgname=python-flask-oauth
pkgver=0.12
pkgrel=1
pkgdesc="Adds OAuth support to Flask."
arch=(any)
url="http://pypi.python.org/pypi/Flask-OAuth"
license=("BSD")
depends=("python2" "python2-flask" "python2-httplib2" "python2-oauth2")
makedepends=("setuptools")
source=("http://pypi.python.org/packages/source/F/Flask-OAuth/Flask-OAuth-${pkgver}.tar.gz")
md5sums=('eea1295eb191f3d3064c61df5a10cdc1')

build() {
    cd $srcdir/Flask-OAuth-$pkgver
    python2 setup.py install --root="$pkgdir" --prefix=/usr
}
