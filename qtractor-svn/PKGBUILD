pkgname=qtractor-svn
pkgver=r2980
pkgrel=1
pkgdesc="Audio/MIDI multitrack sequencer"
arch=('i686')
url="http://qtractor.sourceforge.net"
license=('GPL2')
depends=('qt4' 'jack' 'slv2' 'libmad' 'libsamplerate' 'rubberband' 'liblo')
makedepends=('subversion' 'ladspa' 'dssi')
options=(!strip)
#  conflicts=(qtractor)
_svntrunk=(http://svn.code.sf.net/p/qtractor/code/trunk)

build() {
  if [ -d $srcdir/.svn ]
  then
      svn up $srcdir
  else
      svn co $_svntrunk $srcdir
  fi

  make -f Makefile.svn
  ./configure --prefix=/usr/local  --enable-lilv --enable-suil --enable-debug
#  ./configure --prefix=/usr
#    --prefix=/usr \
#    --enable-lilv \
#    --bindir=/usr/bin/ \
#    --sysconfdir=/usr/share/swami || return 1
  make || return 1
  make DESTDIR="$pkgdir" install
  echo "qtractor-svn installed into /usr/local as bin/qtractor"
#  rm -f $pkgdir/usr/share/angband/*/delete.me
#  install -Dm644 copying.txt $pkgdir/usr/share/licenses/angband/COPYING
#  mkdir $pkgdir/usr/bin
#  mv $pkgdir/usr/games/angband $pkgdir/usr/bin/
#  rmdir $pkgdir/usr/games
}
