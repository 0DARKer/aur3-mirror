pkgname=io
pkgver=2009.01.02
pkgrel=1
pkgdesc="A small prototype-based programming language"
arch=('i686' 'x86_64')
url="http://www.iolanguage.com/"
license=('BSD')
depends=('python' 'libxml2' 'libevent' 'postgresql-libs' 'libsamplerate' \
         'sqlite3' 'taglib' 'portaudio' 'libffi' 'libmysqlclient' 'cairo' \
         'sqlite2' 'gmp' 'freeglut' 'libtiff' 'glfw' 'lzo2' 'ode')
makedepends=('gnustep-gui' 'soundtouch')
source=(http://dev.gentoo.org/~araujo/snapshots/$pkgname-$pkgver.tar.gz)
md5sums=('cb0239f940d5ca388416ebb0f7338ab1')

build() {
  cd $pkgname-$pkgver

  make INSTALL_PREFIX=/usr OPTIMIZE="${CFLAGS}" || return 1
  make INSTALL_PREFIX=$pkgdir/usr install

  install -Dm644 libs/iovm/license/bsd_license.txt \
    $pkgdir/usr/share/licenses/$pkgname/bsd_license.txt
}
