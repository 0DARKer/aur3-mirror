# Maintainer: Alexander De Sousa <archaur.xandy21@spamgourmet.com>

pkgname=awoken-icons
pkgver=1.6
pkgrel=2
pkgdesc="Simple and quite complete icon set, Token-style."
url="http://alecive.deviantart.com/art/AwOken-Awesome-Token-1-6-163570862"
arch=('any')
license=('CCPL:by-nc-sa')
depends=('librsvg')
source=(Awoken_Sources_$pkgver.zip::http://goo.gl/EACOE)
sha1sums=('6e1ff43c53e2d95e60dfb40878afafee18f6e10e')
install=AwOken.install

_destdir=$pkgdir/usr/share/icons

build() {
	cd $srcdir
	msg2 "Decompressing inner archive..."
	tar xfj AwOken.tar.bz2
}

package() {
	cd $srcdir
	mkdir -p $_destdir

	# Ensure directories are accessible by anyone:
	find . -type d -exec chmod 755 '{}' \;

	msg2 "Installing files..."
	cp -r AwOken $_destdir

	# Move customization scripts to the user binaries directory:
	mkdir -p $pkgdir/usr/bin
	mv $_destdir/AwOken/awoken-icon-theme-customization $pkgdir/usr/bin
	# This one is the important one, dark version is not finished (yet).
	mv $_destdir/AwOken/awoken-icon-theme-customization-clear $pkgdir/usr/bin
}
