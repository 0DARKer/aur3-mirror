# Maintainer: Alexander De Sousa <archaur.xandy21@spamgourmet.com>

pkgname=awoken-icons
pkgver=1.9
pkgrel=1
pkgdesc="Simple and quite complete icon set, Token-style."
url="http://alecive.deviantart.com/art/AwOken-1-9-163570862"
arch=('any')
license=('CCPL:by-nc-sa')
depends=('librsvg')
source=(Awoken_Sources_$pkgver.zip::http://goo.gl/EACOE)
sha1sums=('840b41bc42e0092c10ad95af483c750b95f5dfe5')
install=AwOken.install

_destdir=$pkgdir/usr/share/icons

build() {
	cd $srcdir/AwOken-$pkgver
	msg2 "Decompressing inner archives..."
	tar xfz AwOken.tar.gz
	tar xfz AwOkenDark.tar.gz
}

package() {
	cd $srcdir/AwOken-$pkgver
	mkdir -p $_destdir

	# Ensure directories are accessible by anyone:
	find . -type d -exec chmod 755 '{}' \;

	msg2 "Installing files..."
	cp -r AwOken $_destdir
	cp -r AwOkenDark $_destdir

	# Move customization scripts to the user binaries directory:
	mkdir -p $pkgdir/usr/bin
	ln -s $_destdir/AwOken/awoken-icon-theme-customization $pkgdir/usr/bin
	ln -s $_destdir/AwOken/awoken-icon-theme-customization-clear $pkgdir/usr/bin
	ln -s $_destdir/AwOkenDark/awoken-icon-theme-customization-dark $pkgdir/usr/bin
}

# vim: set ts=3 sw=3 tw=0:
