# Contributor: DarkHeart <fumbles@ymail.com>

pkgname=instant
pkgver=0.9.6
pkgrel=1
pkgdesc="A Python module allowing for instant inlining of C and C++ code in Python"
arch=('any')
url="http://www.fenics.org/wiki/Instant"
license=('BSD')
depends=('python' 'swig')
source=(http://www.fenics.org/pub/software/$pkgname/v0.9/$pkgname-$pkgver.tar.gz \
	LICENSE)
md5sums=('2a18be88b391c3c4e021912e6fb9caea'
         'd6bfac9fb1fc4f87bb8ca1209f35ca58')

build() {
  cd $srcdir/$pkgname-$pkgver

  sed 's|"share",||g' -i setup.py

  python setup.py build || return 1
  python setup.py install --root=$pkgdir

  install -m644 -D ../LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:
