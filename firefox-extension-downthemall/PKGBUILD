pkgname=firefox-extension-downthemall
pkgver=3.0 
pkgrel=1
pkgdesc="The first and only download manager/accelerator built inside Firefox!"
arch=('any')
url="http://www.downthemall.net/"
license=('GPL2')
depends=('firefox')
source=(https://code.downthemall.net/releases/downthemall-3.0b4.xpi)


build() {
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/extensions/${emid}
  install -d $dstdir
  sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>11.*</em:maxVersion>#' install.rdf
  rm *.xpi
  mv * $dstdir
}

md5sums=('e6585726bb8952c8e567d00c26c5e066')
