pkgname=firefox-extension-downthemall
pkgver=2.0.17
pkgrel=1
pkgdesc="A Download Manager extension for Firefox with advanced capabilities"
arch=('any')
url="http://www.downthemall.net/"
license=('GPL2')
depends=('firefox')
# source=("https://code.downthemall.net/releases/downthemall-$pkgver.xpi")
# md5sums=("$(curl -sL ${source/.xpi/.md5} | cut -d ' ' -f1)")
source=('https://addons.mozilla.org/firefox/downloads/latest/201/addon-201-latest.xpi')
md5sums=('3239e91553648989b70a5c5cff1afe52')

package() {
  dstdir="$pkgdir/usr/lib/firefox/browser/extensions/{DDC359D1-844A-42a7-9AA1-88A850A938A8}"
  install -d "$dstdir"
  rm *.xpi
  mv * "$dstdir"
}
