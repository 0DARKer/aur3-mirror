# Maintainer: IÃ±igo Alvarez<alvarezviu@gmail.com>
pkgname=rodent
pkgver=4.6.4
pkgrel=4
pkgdesc="Very lightweight filemanager, fully integrated with the console"
arch=('i686' 'x86_64')
url="http://xffm.org/"
license=('GPL')
depends=('libsm' 'libzip' 'file' 'gtk2' 'gdk-pixbuf2' 'libxml2' 'atk' 'fontconfig' 'intltool' 'cairo' 'librsvg')
options=('!libtool')
source=(http://downloads.sourceforge.net/project/xffm/$pkgver/$pkgname-$pkgver.tar.bz2)
md5sums=('f7a9173415632c8aa11caba5ff98c8cd') 

build() {
  cd "$srcdir/$pkgname-$pkgver"
	unset LDFLAGS
  ./configure --prefix=/usr
  make 
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
 }
