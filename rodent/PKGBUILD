# Maintainer: IÃ±igo Alvarez<alvarezviu@gmail.com>
pkgname=rodent
pkgver=4.6.2
pkgrel=1
pkgdesc="Very lightweight filemanager, fully integrated with the console"
arch=('i686' 'x86_64')
url="http://xffm.org/"
license=('GPL')
depends=('libsm' 'libzip' 'file' 'gtk2' 'libice' 'freetype2' 'gdk-pixbuf2' 'libxml2' 'glibc'
 'libx11' 'atk' 'fontconfig' 'cairo' 'libpng' 'cairo' 'pango')
options=('!libtool')
source=(http://downloads.sourceforge.net/project/xffm/$pkgver/$pkgname-$pkgver.tar.bz2)
md5sums=('47afe869472deb1fdd6748bf2079a32e') 

build() {
  cd "$srcdir/$pkgname-$pkgver"
	unset LDFLAGS
  ./configure --prefix=/usr
  make 
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
 }
