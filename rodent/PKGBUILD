# Maintainer: Anntoin Wilkinson <anntoin gmail com>
# Contributor: IÃ±igo Alvarez<alvarezviu@gmail.com>
pkgname=rodent
pkgver=4.9.2
pkgrel=1
pkgdesc="Lightweight, yet full of options filemanager, compatible with console commands"
arch=('i686' 'x86_64')
url="http://xffm.org/"
license=('GPL3')
depends=('desktop-file-utils' 'libsm' 'librsvg' 'pkg-config' 'libzip' 'gtk3' 'intltool' 'file' 'gawk')
optdepends=('python2: for rfm-simple-agent')
makedepends=('chrpath')
options=('!libtool')
install=$pkgname.install
source=(http://downloads.sourceforge.net/project/xffm/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('1cc3f9448822ea4e0c2c76c2e36918a6')

build()
{
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=$pkgdir/usr
    make
}

package()
{
    cd "$srcdir/$pkgname-$pkgver"
    make install

    find $pkgdir/usr/bin -type f -exec chrpath -d {} \;
    sed -i 's/python/python2/' $pkgdir/usr/bin/rfm-simple-agent
}
