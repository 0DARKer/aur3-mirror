pkgname=rodent
pkgver=4.7.3
pkgrel=0
pkgdesc="Lightweight, yet full of options filemanager, compatible with console commands"
arch=('i686' 'x86_64')
url="http://xffm.org/"
license=('GPL')
depends=('libsm' 'libzip' 'file' 'gtk2' 'gdk-pixbuf2' 'libxml2' 'atk' 'fontconfig' 'intltool' 'cairo' 'librsvg')
options=('!libtool')
#source=(http://downloads.sourceforge.net/project/xffm/$pkgver/$pkgname-$pkgver.tar.bz2)
source=(http://xffm.foo-projects.org/tests/test-rodent-4.7.3.tar.bz2)
md5sums=('6b9798a06d133523372b800e81fa9b3f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
	unset LDFLAGS
  ./configure --prefix=/usr
  make 
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
 }
