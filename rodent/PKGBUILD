pkgname=rodent
pkgver=4.7.0
pkgrel=0
pkgdesc="Lightweight, yet full of options filemanager, compatible with console commands"
arch=('i686' 'x86_64')
url="http://xffm.org/"
license=('GPL')
depends=('libsm' 'libzip' 'file' 'gtk2' 'gdk-pixbuf2' 'libxml2' 'atk' 'fontconfig' 'intltool' 'cairo' 'librsvg')
options=('!libtool')
source=(http://downloads.sourceforge.net/project/xffm/$pkgver/$pkgname-$pkgver.tar.bz2)
md5sums=('a8fc436a11dc61914601a43b29e36d57') 

build() {
  cd "$srcdir/$pkgname-$pkgver"
	unset LDFLAGS
  ./configure --prefix=/usr
  make 
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
 }
