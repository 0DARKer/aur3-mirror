# Maintainer: Alucryd <alucryd@gmail.com>
pkgname=systemd-granola
pkgver=1.0
pkgrel=2
pkgdesc="Systemd integration for granola"
arch=('any')
url="http://grano.la/"
license=('GPL')
depends=('granola')
install=('systemd.install')
source=('granola.conf' 'granola.service')
md5sums=('60a58d7e543999a4b6bc8591c1f6de66' 'c3b3d8154fff9493a397892c858912ba')

package() {
  cd $srcdir
  mkdir -p $pkgdir/etc/{modules-load.d,systemd/system}
  install -m 0644 -D granola.conf $pkgdir/etc/modules-load.d/
  install -m 0644 -D granola.service $pkgdir/etc/systemd/system/
}
