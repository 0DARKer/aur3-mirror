# Maintainer: Alucryd <alucryd at gmail dot com>
pkgname=systemd-granola
pkgver=1.0
pkgrel=3
pkgdesc="Systemd integration for granola"
arch=('any')
url="http://grano.la/"
license=('GPL3')
depends=('granola' 'initscripts')
install='systemd.install'
source=('granola.conf' 'granola.service' 'granola-connect.service')
md5sums=('60a58d7e543999a4b6bc8591c1f6de66' 'c3b3d8154fff9493a397892c858912ba' 'cac831a24db31a6d4833aaa02c48fadf')

package() {
    cd $srcdir
    install -D -m644 granola.conf $pkgdir/etc/modules-load.d/granola.conf
    install -D -m644 granola.service $pkgdir/etc/systemd/system/granola.service
    install -D -m644 granola-connect.service $pkgdir/etc/systemd/system/granola-connect.service
}
