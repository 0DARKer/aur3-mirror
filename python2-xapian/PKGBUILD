# Contributor: DonVla <donvla@users.sourceforge.net>

pkgname=python2-xapian
_realname=xapian-bindings
pkgver=1.2.4
pkgrel=1
pkgdesc="Python bindings for Xapian"
arch=(i686 x86_64)
url="http://xapian.org/docs/bindings/python/"
license=('GPL')
groups=(xapian)
depends=('python2' 'xapian-core')
makedepends=('gcc')
conflicts=('xapian-python-bindings')
source=(http://oligarchy.co.uk/xapian/${pkgver}/${_realname}-$pkgver.tar.gz)
md5sums=('b3d078883b259eec1bbaff8982feabbe ')
sha256sums=('d41ebd46aa5070782b8294caea6bc02ef96f8506081e52cf8970056bc9a08f0c')

build() {
  cd "$srcdir/${_realname}-$pkgver"
    
  ./configure XAPIAN_CONFIG=/usr/bin/xapian-config \
         --prefix=/usr --with-python \
         PYTHON=/usr/bin/python2

  make || return 1
}


package() {
  cd "$srcdir/${_realname}-$pkgver"

  make DESTDIR="$pkgdir" install || return 1
}
