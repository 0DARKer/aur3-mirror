# Maintainer: Alexandre Becoulet <alexandre.becoulet@free.fr>

pkgname=libdvbcsa
pkgver=1.0.1
pkgrel=1
pkgdesc="A free implementation of the DVB Common Scrambling Algorithm"
arch=('i686' 'x86_64')
url="http://www.videolan.org/developers/libdvbcsa.html"
license=('GPL3')
depends=()
options=(libtool)
source=(http://download.videolan.org/pub/videolan/libdvbcsa/$pkgver/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr || return 1
  make || return 1
  make check || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('9d823036e5ea44cb6efe11587d2d6974')
