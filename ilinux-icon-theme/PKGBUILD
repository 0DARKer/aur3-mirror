pkgname=ilinux-icon-theme
pkgver=v.4
pkgrel=1
pkgdesc="cons design by icons factory depend on Flurry system icon and fenza icons"
url="http://gnome-look.org/content/show.php/iLinux-icons?content=156955&PHPSESSID=959fc049dfdb47e6df0ab16bc075c9ca"
license=('LGPL')
arch=('any')
options=(!strip)
source=("http://www.deviantart.com/download/354470161/ilinux_icons_v_3_by_haniahmed-d5v1ixd.7z")
md5sums=('b55ec2eeadd6f17ac17dc2c457faf158')

package() {
  cd "$srcdir"
  mkdir -p "$pkgdir/usr/share/icons"

  cp -rf iLinux-icons "$pkgdir/usr/share/icons/"
}
