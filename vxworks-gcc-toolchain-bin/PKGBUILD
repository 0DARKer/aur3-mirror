pkgname=vxworks-gcc-toolchain-bin
pkgver=1.0.2
pkgrel=1
pkgdesc="A GCC toolchain for VxWorks 6.3 C/C++ developement - binaries"
arch=('i686' 'x86_64')
url="https://www.github.com/alexbrinister/vxWorks-GCC-NashobaRobotics"
license=('GPL')
depends=()
optdepends=('cmake: custom toolchain configuration file support')
options=('!strip' 'libtool' 'zipman')
install=$pkgname.install
if test "$CARCH" == i686; then
	source=(https://www.dropbox.com/s/b1zofyg1ah98qgu/$pkgname-$pkgver-i686.tar.bz2)
	sha384sums=('5306182c6458f523662635e0f2bdda1c629023e8a483382f9c99e0b6d719893bf2b31fc4cd0b06f7443d1d23c1f7a286')
else
	source=(https://www.dropbox.com/s/rqbxuaxxd015d67/$pkgname-$pkgver-x86_64.tar.bz2)	
	sha384sums=('a119d3c6b5f7a69fa1580d63b3d76c37e2a744309e18c17930e242489aaa166c89e965ca40275d15e8f9f7f5d924f144')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cp -r ./usr $pkgdir/
}
