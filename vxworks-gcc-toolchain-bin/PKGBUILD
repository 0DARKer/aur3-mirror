pkgname=vxworks-gcc-toolchain-bin
pkgver=1.0.2
pkgrel=3
pkgdesc="A GCC toolchain for VxWorks 6.3 C/C++ developement - binaries"
arch=('i686' 'x86_64')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL')
depends=()
optdepends=('cmake: custom toolchain configuration file support')
options=('!strip' 'libtool' '!zipman')
install=$pkgname.install
if test "$CARCH" == i686; then
	source=(https://www.dropbox.com/s/5ugaly5ua0iigks/$pkgname-$pkgver-i686.tar.xz)
	sha384sums=('1c268dbeaf36582545ee0a91f0855c55c1c33aa85e6223a9e0d7c8d69e6a62837547a6ebc934c215810128e9e9697c89')
else
	source=(https://www.dropbox.com/s/b4yjoj3eshpvph5/$pkgname-$pkgver-x86_64.tar.xz)	
	sha384sums=('bdb4374a542393e5715d5e5c45a0c2466a38e6099c0b28685f3cedc72e69b89c9871d1d43ec62cd32bd6c37bcb5cc764')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cp -r ./usr $pkgdir/
}
