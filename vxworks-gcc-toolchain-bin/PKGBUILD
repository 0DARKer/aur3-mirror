pkgname=vxworks-gcc-toolchain-bin
pkgver=1.2
pkgrel=1
pkgdesc="A GCC toolchain for VxWorks 6.3 C/C++ developement - binaries"
arch=('i686' 'x86_64')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL')
depends=('zlib' 'cloog' 'isl' 'xz' 'expat')
options=('!strip' '!libtool' '!zipman')
install=$pkgname.install
if test "$CARCH" == i686; then
	source=(https://www.dropbox.com/s/08ltbwu8byu5z43/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('e118e408feb2edad7153979f4ba5a90e5bcf51e0a3f138239b665825c0adff415e363c6bab15d8ea8292f59a0a916628d0e5d1bb89b04675111c5c900ec6a796')
else
	source=(https://www.dropbox.com/s/rwcjrhtrfezi0wg/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('602696eadecaa25ad1994df2f5e03243dab69a09aded1f9dead4e0ec0f717bb2f17d0152c66e78cd741ecb18189c2cf5e504e2c6eb4863826bca1925f8bf40c6')

fi

package(){
  cd $srcdir
  tar -xJf $pkgname-$pkgver-$CARCH.tar.xz

  cd "$pkgname-$pkgver"
  cp -dpr --no-preserve=ownership ./usr $pkgdir/
}
