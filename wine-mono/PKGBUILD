pkgname=wine-mono
pkgver=0.0.4
pkgrel=1
pkgdesc="Wine addon providing Mono, inteded as a replacement for the .NET runtime and class libraries in Wine"
arch=('i686' 'x86_64')
url="https://github.com/madewokherd/wine-mono"
license=('unknown')
depends=('wine')
source=("http://downloads.sourceforge.net/project/wine/Wine%20Mono/0.0.4/${pkgname}-${pkgver}.tar.gz")
md5sums=("61c5ee49b8847c4dccfdab1fbc0706ae")
build() {
  cd "$srcdir/${pkgname}-${pkgver}"
  ./build-winemono.sh
}
package () {
  cd "$srcdir/${pkgname}-${pkgver}"
  msiexec /i winemono.ms
}
