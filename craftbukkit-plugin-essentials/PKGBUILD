pkgname=craftbukkit-plugin-essentials
pkgver=2.9.2
pkgrel=1
pkgdesc="Plugin for Bukkit"
arch=(any)
url="http://dev.bukkit.org/server-mods/essentials/"
license=('GPLv3')
depends=('craftbukkit>=1.2.5r4.0')
optdepends=('craftbukkit-plugin-essentials-extras'
'craftbukkit-plugin-essentials-gm: GroupManager for Essentials')
source=("http://tiny.cc/EssentialsZipDownload")
md5sums=('5ed8b1e76453464c8a236b633b1ee115')
makedepends=(unzip)

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  install -m 644 "$srcdir/Essentials.jar" "$pkgdir/opt/craftbukkit/plugins/"
  install -m 644 "$srcdir/EssentialsChat.jar" "$pkgdir/opt/craftbukkit/plugins/"
  install -m 644 "$srcdir/EssentialsProtect.jar" "$pkgdir/opt/craftbukkit/plugins/"
  install -m 644 "$srcdir/EssentialsSpawn.jar" "$pkgdir/opt/craftbukkit/plugins/"
}

# vim:set ts=2 sw=2 et:
