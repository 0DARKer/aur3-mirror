### Hacks... linux-ck was updtaed to 3.2 eventought
### the ck patches for that kernel hawen't been released
### so many are probably still on 3.1 kernels
### so Il put in some hacks to make this work on both...

if [ `vercmp 3.2 $(LANG=C pacman -Qi linux-ck | grep Version | sed 's|Version.*: ||')` -lt 1 ]; then
  _kernel_series=3.2
else
  _kernel_series=3.1
fi

pkgname=vhba-module-ck
pkgver=20110915
_kernver="$(cat /lib/modules/extramodules-${_kernel_series}-ck/version)"
pkgrel=1
pkgdesc="Kernel module that emulates SCSI devices. For linux-ck."
arch=('i686' 'x86_64')
url="http://cdemu.sourceforge.net/"
license=('GPL2')
depends=('linux-ck>=3.1' 'linux-ck<=3.3')
makedepends=('linux-ck-headers>=3.1')
install=vhba-module.install
source=(http://downloads.sourceforge.net/cdemu/vhba-module-${pkgver}.tar.gz)
md5sums=('fb90cd8fc4cd74d08c92e8235f99f1f4')

build() {
  cd "${srcdir}/vhba-module-${pkgver}"

  make -j1 KDIR=/usr/src/linux-${_kernver}  
}

package() {
  cd "${srcdir}/vhba-module-${pkgver}"
  install -D vhba.ko "${pkgdir}/lib/modules/extramodules-${_kernel_series}-ck/vhba.ko"
}
