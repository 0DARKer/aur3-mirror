pkgname=vhba-module-ck
pkgver=20110915
_kernver="$(cat /lib/modules/extramodules-3.3-ck/version)"
pkgrel=4
pkgdesc="Kernel module that emulates SCSI devices. For linux-ck."
arch=('i686' 'x86_64')
url="http://cdemu.sourceforge.net/"
license=('GPL2')
depends=('linux-ck>=3.3' 'linux-ck<=3.4')
makedepends=('linux-ck-headers>=3.3')
install=vhba-module.install
source=(http://downloads.sourceforge.net/cdemu/vhba-module/vhba-module-${pkgver}.tar.bz2)
md5sums=('8bb99b427ca67bad448f4dd211bdd1a2')

build() {
  cd "${srcdir}/vhba-module-${pkgver}"

  make -j1 KDIR=/usr/src/linux-${_kernver}  
}

package() {
  cd "${srcdir}/vhba-module-${pkgver}"
  install -D vhba.ko "${pkgdir}/lib/modules/extramodules-3.3-ck/vhba.ko"
}
