# Contributor: Charles Lindsay <charles@chaoslizard.org>

pkgname=vhba-module-ck
pkgver=20110416
_kernver='2.6.39-ck'
pkgrel=5
pkgdesc="Kernel module that emulates SCSI devices. For kerenl26-ck."
arch=('i686' 'x86_64')
url="http://cdemu.sourceforge.net/"
license=('GPL2')
depends=('kernel26-ck>=2.6.39' 'kernel26-ck<2.6.40')
makedepends=('kernel26-ck-headers>=2.6.39')
install=vhba-module.install
source=(http://downloads.sourceforge.net/cdemu/vhba-module-$pkgver.tar.gz)
md5sums=('2f91dd4ee8648da92d625221d4275b60')

build() {
  cd "$srcdir/vhba-module-$pkgver"
  make -j1 KDIR=/usr/src/linux-${_kernver} || return 1
  
}

package() {
  cd "$srcdir/vhba-module-$pkgver"
  install -D vhba.ko "$pkgdir/lib/modules/${_kernver}/extra/vhba.ko" || return 1
}
