# Maintainer: Felipe Hommen <felibank at gmail dot com>
pkgname=kiwix-bin
pkgver=0.9_rc1
pkgrel=4
pkgdesc="Offline reader for Web content. It's especially intended to make Wikipedia available offline."
arch=('i686' 'x86_64')
url="http://www.kiwix.org"
license=('GPL3')
[[ "$CARCH" == 'i686' ]] && depends=('rpcbind' 'gtk2' 'alsa-lib' 'libxt' 'libcanberra' 'sqlite3' 'java-environment') && _usrlib='lib'
[[ "$CARCH" == 'x86_64' ]] && depends=('rpcbind' 'lib32-glibc' 'lib32-gtk2' 'lib32-alsa-lib' 'lib32-libxt' 'lib32-libcanberra' 'lib32-sqlite3' 'java-environment' 'lib32-dbus-glib') && _usrlib='lib32'
provides=('kiwix')
conflicts=('kiwix')
install='kiwix.install'

source=('http://downloads.sourceforge.net/project/kiwix/0.9_rc1/kiwix-0.9-rc1-linux-i686.tar.bz2' 'kiwix.desktop')
md5sums=('08973c7663a3b8ee5090c790a965f2a8' '28f6bc22e23a3a73e60bbcf632b65827')

#build() {
#}

package() {
	mkdir -p ${pkgdir}/usr/${_usrlib}
	mkdir -p ${pkgdir}/usr/bin
	cp -R -d ${srcdir}/kiwix ${pkgdir}/usr/${_usrlib}
	find ${pkgdir}/usr/${_usrlib}/kiwix -perm -u=w -exec chmod a+w {} \;	#Set permisions
	find ${pkgdir}/usr/${_usrlib}/kiwix -perm -u=r -exec chmod a+r {} \;
	find ${pkgdir}/usr/${_usrlib}/kiwix -perm -u=x -exec chmod a+x {} \;
	ln -f -s /usr/${_usrlib}/kiwix/kiwix ${pkgdir}/usr/bin/kiwix
	install -D -m644 ${srcdir}/kiwix.desktop ${pkgdir}/usr/share/applications/kiwix.desktop
}
