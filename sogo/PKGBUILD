# Maintainer:  Andre Wayand <archlinux@awayand.sleepmail.com>
pkgname=sogo
pkgver=1.3.7
pkgrel=1
pkgdesc="groupware server built around OpenGroupware.org (OGo) and the SOPE application server"
arch=('any')
url="http://www.sogo.nu/"
license=('GPL')
depends=('sope' 'gnustep-base' 'gcc-objc' 'libmemcached')
source=(
  "http://www.sogo.nu/files/downloads/SOGo/Sources/SOGo-$pkgver.tar.gz"
)
build() {
  cd "$srcdir/SOGo-$pkgver"
  ./configure --prefix=$(gnustep-config --variable=GNUSTEP_SYSTEM_ROOT)
  make
}

check() {
  cd "$srcdir/SOGo-$pkgver"
  echo "Nice."
}

package() {
  cd "$srcdir/SOGo-$pkgver"
  make install DESTDIR="${pkgdir}"
}

md5sums=('db89a3e0cb8414dffaeb8241ea8e573d')
sha1sums=('5f51cf5554d300c5f42935c885391c4dcdedec9c')
