# Maintainer: Dennis Fink <the_metalgamer@hackerspace.lu>

pkgname=python-acrylamid
pkgver=0.5.0
pkgrel=2
pkgdesc="static blog generator in python with incremental rendering. Python2 version "
arch=('any')
url="http://posativ.org/acrylamid/"
license=('custom:BSD')
depends=('python' 'python-jinja>=2.4' 'python-markdown>=2.0.1' 'python-unidecode')
makedepends=('python-distribute')
optdepends=('python-pygments: Syntax Highlighting'
'python-docutils: reStructuredText'
'python-smartypants-bzr: Typography enhancements'
'python-asciimathml: AsciiMathML to MathML'
'python-textile: Textile'
'python-yaml: exact YAML parser'
'python-twitter-tools: Twitter'
'discount: Discount'
'python-mako: Mako Templating'
)
conflicts=('python-acrylamid-git' 'python2-acrylamid')
source=("http://pypi.python.org/packages/source/a/acrylamid/acrylamid-$pkgver.tar.gz")
md5sums=('41c45182988f704119290f0fd549055b')

build() {

  cd $srcdir/acrylamid-$pkgver
  python setup.py build
  python setup.py install --root="$pkgdir" --optimize=1
}

