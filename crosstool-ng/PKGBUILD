# Maintainer:  Bartlomiej Piotrowski
# Contributor: jwwolf <jwwolf+arch@gmail.com>

pkgname=crosstool-ng
pkgver=1.19.0
pkgrel=1
pkgdesc='Versatile (cross-)toolchain generator'
arch=('i686' 'x86_64')
url='http://crosstool-ng.org/'
license=(GPL)
depends=('make' 'gperf' 'wget')
source=(http://crosstool-ng.org/download/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('882e5420ec0ff5a19a9d027ec5094527')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make -j1
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
