# Maintainer: Michael Schubert <mschu.dev at gmail>

pkgname=python2-sparqlwrapper
_pkgname=SPARQLWrapper
pkgver=1.4.2
pkgrel=1
pkgdesc="Helps in creating the query URI and convert the result into a more manageable format"
url="http://rdflib.net/"
license="W3C"
depends=('python2')
optdepends=('rdflib' 'python-simplejson')
makedepends=('python2-distribute')
arch=('any')
source=("http://sourceforge.net/projects/sparql-wrapper/files/sparql-wrapper-python/$pkgver/$_pkgname-$pkgver.zip/download")
md5sums=('8b6b16ed33967b0f1e6a8fcff6948336')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir" --optimize=1 
  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
