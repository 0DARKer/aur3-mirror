pkgname=freesynd-svn
pkgver=trunk
pkgrel=1
pkgdesc="FreeSynd is a free, cross-platform reimplementation of engine for the classic Bullfrog game 'Syndicate'."
arch=(i686 x86_64)
url="http://freesynd.sourceforge.net/"
license=('GPL')
depends=('subversion' 'cmake' 'sdl_mixer' 'sdl_image' 'libpng')
source=(svn://svn.code.sf.net/p/freesynd/code/freesynd/$pkgver)
md5sums=('SKIP')

build() {
  cd $startdir/src/$pkgver
  chmod +x configure

  ./configure --release --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}

