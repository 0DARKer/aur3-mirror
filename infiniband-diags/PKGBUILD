# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=infiniband-diags
pkgver=1.5.12
pkgrel=3
pkgdesc="OpenFabrics Alliance infiniband diagnostic tools"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibmad' 'opensm' 'perl')
source=("http://www.openfabrics.org/downloads/management/${pkgname}-${pkgver}.tar.gz")
md5sums=('7a823a3f6d9cfa3d19e1ca6889f3c122')
sha512sums=('20419d9a44c54ba4eb33bd293788e1dd5433a28796d7f338c2d96bff4818ab37d3f136f12f556c62fe0e909dadc34f7c2a402479d574c7154a51522e72cbcc36')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --with-ibpath_override=/usr/sbin
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" mandir='${prefix}/share/man' sysconfdir="/etc" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
