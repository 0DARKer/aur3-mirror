# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-terminal-transparent
_realname=gnome-terminal
pkgver=3.12.2
pkgrel=1
pkgdesc="The GNOME Terminal Emulator - Applied patch to allow transparent background"
arch=(i686 x86_64)
license=(GPL)
provides=('gnome-terminal')
conflicts=('gnome-terminal')
depends=(vte3 gsettings-desktop-schemas dconf)
makedepends=(gnome-doc-utils intltool itstool docbook-xsl desktop-file-utils gconf
             libnautilus-extension appdata-tools gnome-shell)
optdepends=('gconf: settings migration when upgrading from older version')
options=('!emptydirs')
url="http://www.gnome.org"
groups=('gnome')
install=gnome-terminal-transparent.install
source=(http://ftp.gnome.org/pub/gnome/sources/$_realname/${pkgver:0:4}/$_realname-$pkgver.tar.xz
        'restore-transparency.patch')
sha256sums=('ea19ce610af2873d26e1e75491415e17af6a5080366db966f9220fdeea5ebecd'
	    '4bf93c04790215d52d2d6f950ccc2156f2347d5c18553290ffb25b76f860959e')

prepare() {
  cd $_realname-$pkgver
  patch -Np1 -i ../restore-transparency.patch
}

build() {
  cd $_realname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --libexecdir=/usr/lib/$pkgname --disable-static --with-nautilus-extension
  make
}

check() {
  cd $_realname-$pkgver
  make check
}

package() {
  cd $_realname-$pkgver
  make DESTDIR="$pkgdir" install
}
