# Maintainer: Zhengyu Xu <xzy3186@gmail.com>

pkgname=insync-thunar
pkgver=1.0.26
pkgrel=1
pkgdesc="Thunar integration for insync"
url="https://support.insynchq.com/forums/discussion/2442/new-insync-version-1-0-26"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "thunarx-python")
source=("${pkgname}-${pkgver}.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}.31705_all.deb")
sha256sums=("f63a289661d1d9fd4d18bbaa97dbc187f7f76b20156e51ecdb2d9c37ee18c4e5")
noextract=("${pkgname}-${pkgver}.deb")

package() {
   cd $srcdir
   ar x ${pkgname}-${pkgver}.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
