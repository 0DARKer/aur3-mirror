# Maintainer: Zhengyu Xu <xzy3186@gmail.com>

pkgname=insync-thunar
pkgver=1.0.20
pkgrel=1
pkgdesc="Thunar integration for insync"
url="https://support.insynchq.com/forums/discussion/2080/new-insync-version-1-0-20-with-linux-cli"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "thunarx-python")
source=("${pkgname}-${pkgver}.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}_all.deb")
sha256sums=("127e15206b63f508629432f194c3ceb1b2c263dc30f8e85f60df8474a73fdebf")
noextract=("${pkgname}-${pkgver}.deb")

package() {
   cd $srcdir
   ar x ${pkgname}-${pkgver}.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
