# Maintainer: Zhengyu Xu <xzy3186@gmail.com>

pkgname=insync-thunar
pkgver=1.0.34
pkgrel=1
pkgdesc="Thunar integration for insync"
url="https://support.insynchq.com/forums/discussion/3300/new-insync-version-1-0-34"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "thunarx-python")
source=("${pkgname}-${pkgver}.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}.31801-precise_all.deb")
sha256sums=("72dd6f4848ab3b45742ee78a135d06dec7e15ec02bf311dcb12df9df41dae283")
noextract=("${pkgname}-${pkgver}.deb")

package() {
   cd $srcdir
   ar x ${pkgname}-${pkgver}.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
