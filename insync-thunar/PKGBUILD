pkgname=insync-thunar
pkgver=1.0.27
pkgrel=1
pkgdesc="Thunar integration for insync"
url="https://support.insynchq.com/forums/discussion/2599/new-insync-version-1-0-27"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "thunarx-python")
source=("${pkgname}-${pkgver}.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}.31715_all.deb")
sha256sums=("29cf010dfe6ab9a6615002cc19366da5211db56499a27bc0544fab8001e62c63")
noextract=("${pkgname}-${pkgver}.deb")

package() {
   cd $srcdir
   ar x ${pkgname}-${pkgver}.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
