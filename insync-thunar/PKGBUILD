# Maintainer: Zhengyu Xu <xzy3186@gmail.com>

pkgname=insync-thunar
pkgver=1.1.5
pkgrel=1
pkgdesc="Thunar integration for insync"
url="https://support.insynchq.com/forums/discussion/3479/new-insync-version-1-1-4"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "thunarx-python")
source=("${pkgname}-${pkgver}.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}.32051-precise_all.deb")
sha256sums=("f021dcc011b2b8513393a24242a2ee999bd4d5b656f82df60a4fae4659495945")
noextract=("${pkgname}-${pkgver}.deb")

package() {
   cd $srcdir
   ar x ${pkgname}-${pkgver}.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
