# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-html-rewriteattributes
pkgver=0.04
pkgrel=1
pkgdesc="Concise attribute rewriting"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~sartak/HTML-RewriteAttributes-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-regexp-common')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/S/SA/SARTAK/HTML-RewriteAttributes-$pkgver.tar.gz")
md5sums=('2f14d37ad31e91f2ee0c13d2f2cd329b')

build() {
	cd "$srcdir/HTML-RewriteAttributes-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/HTML-RewriteAttributes-$pkgver"
	make install DESTDIR="$pkgdir"
}
