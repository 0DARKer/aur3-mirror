# Maintainer: Jens Staal <staal1978@gmail.com>
pkgname=gentle-m-svn
pkgver=1.9.4
pkgrel=1
pkgdesc="a software for DNA and amino acid editing, database management, plasmid maps, restriction and ligation, alignments, 
sequencer data import, calculators, gel image display, PCR, and much more."
arch=('i686' 'x86_64')
url="http://gentle.magnusmanske.de/"
license=('gpl')
depends=("wxgtk" "sqlite2" "sqlite3" "libmysqlclient")
makedepends=('subversion')


build() {

    svn co https://gentle-m.svn.sourceforge.net/svnroot/gentle-m gentle-m

    cd $startdir/src/gentle-m/trunk
    ./configure
    make
}
