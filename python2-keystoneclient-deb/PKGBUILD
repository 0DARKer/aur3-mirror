pkgname='python2-keystoneclient-deb'
pkgver=0.3.2
pkgrel=1
pkgdesc='Openstack identity client'
arch=('i686' 'x86_64')
url='http://packages.ubuntu.com/saucy/all/python-keystoneclient'
license=('Apache')
groups=('openstack-deb')

depends=(
  'python2'
  'python2-argparse'
  'python2-pbr'
  'python2-netaddr'
  'python2-six'
  'python2-iso8601'
  'python2-oslo-config'
  'python2-babel'
  'python2-prettytable'
  'python2-requests'
)

conflicts=('python2-keystoneclient', 'python2-keystoneclient-git')
source=('http://archive.ubuntu.com/ubuntu/pool/main/p/python-keystoneclient/python-keystoneclient_0.3.2-0ubuntu1_all.deb')
md5sums=('7cddcd834fc371c50fe9cf78da01bae5')

package() {
  cd ${srcdir}
  tar -zxf ${startdir}/src/data.tar.gz
  cp -r ${srcdir}/usr/ ${pkgdir}
}