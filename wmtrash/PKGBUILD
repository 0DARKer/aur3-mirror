# Maintainer: Mario Bl√§ttermann <mariobl@gnome.org>

pkgname=wmtrash
pkgver=0.2
pkgrel=1
pkgdesc="Simple yet useful trash dockapp"
arch=('i686' 'x86_64')
url="http://www.dockapps.org/file.php/id/266"
license=('GPL')
groups=(x11)
depends=('gtk')
source=(http://www.dockapps.org/download.php/id/555/$pkgname-$pkgver.tar.gz)
md5sums=(f804a71a5537d1c7373815bbf0cd9b86)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  mkdir -p $startdir/pkg/usr/bin/
  mkdir -p $startdir/pkg/usr/share/$pkgname
	chmod 755 $srcdir/$pkgname-$pkgver/$pkgname
	chmod 666 $srcdir/$pkgname-$pkgver/conf/*
  install -m 755 $pkgname $startdir/pkg/usr/bin/
  install -m 666 ./conf/* $startdir/pkg/usr/share/$pkgname
}

# vim:set ts=2 sw=2 et:
