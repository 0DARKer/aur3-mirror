# Maintained by: danielwallace <daniel.wallace12@gmail.com>

pkgname=gomstreamer-git
pkgver=20120228
pkgrel=8
pkgdesc="Watch or Save(or delayed) the GSL stream"
arch=('any')
url="http://github.com/danielwallace/GOMstreamer"
license=('unknown')
install='gomstream-git.install'
makedepends=('git')
depends=('python2' 'wget' 'vlc')
provides=('gomstreamer')
conflicts=('gomstreamer')

_gitroot="git://github.com/danielwallace/GOMstreamer.git"
_gitname="GOMstreamer"

build() {
	#cd ${srcddir}
	msg "checking git..."
	if [ -d ${_gitname} ]; then
		cd ${_gitname} && git pull origin
	else
		git clone ${_gitroot}
	fi
	rm -rf ${srcdir}/${_gitname}-build 
	git clone ${srcdir}/${_gitname} ${srcdir}/${_gitname}-build
}
package(){
	cd ${srcdir}/${_gitname}-build
	msg "packaging...."
	install -D -m755 gomstreamer ${pkgdir}/usr/bin/gomstreamer
	install -D -m755 gomplay ${pkgdir}/usr/bin/gomplay
}
