 ##Contributor: T.Cunly

pkgname=jaxodraw
pkgver=2.0
pkgrel=1

pkgdesc="JaxoDraw is a Java program for drawing Feynman diagrams."
arch=(i686 x86_64)
url="http://jaxodraw.sourceforge.net"
license=('GPL')
depends=(apache-ant)
source=("http://ftp.heanet.ie/pub/sourceforge/j/project/ja/jaxodraw/jaxodraw/2.0-1/jaxodraw-2.0-1_src.tar.gz" 'jaxodraw')
md5sums=('d4837b2f2a083b110d92f6b8ea649057' '740a424ffae252682969e41da7e70165')

build() {
   cd $srcdir/JaxoDraw-$pkgver-$pkgrel 
   ant || return 1
   ant javadoc

   install -D -m 644 build/$pkgname-$pkgver-$pkgrel.jar $pkgdir/opt/Science/JaxoDraw/$pkgname-$pkgver-$pkgrel.jar

   DOCDIR=/usr/share/doc
   if [ ! -d $pkgdir$DOCDIR ]
   then
           mkdir -p $pkgdir$DOCDIR
   fi

   mv build/javadoc  $pkgdir$DOCDIR/jaxodraw

   BINDIR=/usr/local/bin
   if [ ! -d $pkgdir$BINDIR ]
   then
           mkdir -p $pkgdir$BINDIR
   fi

   install -D -m 755 $startdir/jaxodraw $pkgdir$BINDIR/
}

    
