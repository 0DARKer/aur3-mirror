# Contributor: orelien <aurelien.foret@wanadoo.fr>
pkgname=rp-pppoe-gui
pkgver=3.10
pkgrel=1
pkgdesc="GUI from/for Roaring Penguin's Point-to-Point Protocol over Ethernet client"
arch=('i686' 'x86_64')
url="http://www.roaringpenguin.com/pppoe/"
license=('GPL')
depends=("rp-pppoe=$pkgver" 'tk')
options=('!emptydirs')
source=(http://www.roaringpenguin.com/files/download/rp-pppoe-$pkgver.tar.gz)
md5sums=('d58a13cc4185bca6121a606ff456dec0')

build() {
  cd "$srcdir"/rp-pppoe-$pkgver/src
  ./configure --prefix=/usr --enable-plugin=/ppp-2.4.4
  cd ../gui
  make || return 1
  make DESTDIR="$pkgdir" install
}
