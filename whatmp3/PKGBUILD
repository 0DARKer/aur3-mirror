# Contributor: mutantmonkey <mutantmonkey@gmail.com>
pkgname=whatmp3
pkgver=3.5
pkgrel=2
pkgdesc="whatmp3 is a small Python script that accepts a list of directories containing FLAC files as arguments and converts them to MP3 with the specified options. It can optionally create a torrent file."
url="http://logik.li/projects/whatmp3/"
arch=('any')
license=('MIT')
depends=('python' 'mktorrent' 'flac' 'lame')
optdepends=('vorbis-tools: OGG Vorbis support'
            'neroaacenc: AAC support'
            'neroaactag: AAC support')
source=("http://logik.li/projects/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('324556a6c0561c3529ce487f964298de')
sha256sums=('0a320912a3c9c72502ab0b1a39b81bf2c7b2e3f5a2b42b3728884dfb2d2d5c40')

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	install -D whatmp3 ${pkgdir}/usr/bin/whatmp3
}
