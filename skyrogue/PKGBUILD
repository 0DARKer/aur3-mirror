# Maintainer: Javier Aravena Claramunt <javier@aravenas.com>
pkgname=skyrogue
pkgver=alpha_19
pkgrel=1
pkgdesc="Simple, accessible-yet-difficult, fwooshy, “feel good” flight sim."
arch=('x86_64' 'i686')
url="http://nihilocrat.itch.io/sky-rogue"
license=('custom')
depends=(libgl glu libxext libxcursor libxau)
makedepends=('unzip')
source=("${pkgname}")
md5sums=('021763e0061fbd893f7c94d8f74565a5')
noextract=("${pkgname}_${pkgver}_linux.zip")

prepare() {
    if [[ ! -f "${pkgname}_${pkgver}_linux.zip" ]]; then
        echo "Please download "${pkgname}_${pkgver}_linux.zip" from ${url} and place it in the same directory as this PKGBUILD"
        false
    fi
    cd "$srcdir"
    unzip -o "${pkgname}_${pkgver}_linux.zip"
}

package() {
    cd "$srcdir/"
    install -d -m755 "${pkgdir}/opt/"
    cp -r "${pkgname}_linux" "${pkgdir}/opt/${pkgname}"
    install -D -m755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"

    cd "${pkgdir}/opt/${pkgname}"
    if [[ "$CARCH" == x86_64 ]]; then
        mv "${pkgname}.x86_64" "${pkgname}"
        rm "${pkgname}.x86"
    else
        mv "${pkgname}.x86" "${pkgname}"
        rm "${pkgname}.x86_64"
    fi
    chmod 755 "${pkgname}"
}
