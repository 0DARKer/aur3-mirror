pkgname=orayta-books-svn
pkgver=379
pkgrel=2
pkgdesc="Orayta books"
arch=('any')
license=('CC-BY-3.0')
url="http://code.google.com/p/orayta/"
depends=('orayta-svn')
makedepends=('subversion' 'libzip' 'unzip' 'zip')
_svnbooks=http://orayta.googlecode.com/svn/books/
_svnmodbooks=Books
build() {
svn co $_svnbooks $_svnmodbooks
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
cd $_svnmodbooks
./genBook.sh
./GenMakeFile.sh
make DESTDIR=$pkgdir install
}
