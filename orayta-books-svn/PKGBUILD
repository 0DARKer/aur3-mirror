# Maintainer: Yoel Lion <yoel3ster at gmail dot com>

pkgname=orayta-books-svn
pkgver=232
pkgrel=1
pkgdesc="Orayta books"
arch=('any')
license=('CC-BY-3.0')
url="http://code.google.com/p/orayta/"
depends=('orayta-svn')
makedepends=('subversion')
_svnbooks=http://orayta.googlecode.com/svn/books/
_svnmodbooks=Books
build() {
svn co $_svnbooks $_svnmodbooks
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
mkdir -p $pkgdir/usr/share/Orayta/
cp -rf $srcdir/$_svnmodbooks $pkgdir/usr/share/Orayta/
rm -rf $srcdir/$_svnmodbooks
}
