# Maintainer: Emiliano Vavassori <syntaxerrormmm(at)gmail.com>
pkgname=ruby-rspec-rails
_gemname=rspec-rails
pkgver=2.12.0
pkgrel=1
pkgdesc="RSpec-2 for Rails-3"
arch=(any)
url="http://github.com/rspec/rspec-rails"
license=('MIT')
depends=('ruby' "ruby-rspec-core>=${pkgver}" "ruby-rspec-expectations>=${pkgver}" "ruby-rspec-mocks>=${pkgver}" 'ruby-railties>=3.0' 'ruby-actionpack>=3.0' 'ruby-activesupport>=3.0')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('ecdf1236025ee346b1711cb5a4b41489')

package() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" "${_gemname}-${pkgver}.gem"
}
