# Maintainer: Silvernode <mollusk@sudotask.com>
#hosted it myself due to original url filename issues
pkgname="hou-bin"
pkgver="0.2.2a"
pkgrel=2
pkgdesc="Heroes of Umbra is a 2D side-scrolling, multiplayer RPG."
url="http://heroesofumbra.com/"
arch=('x86_64' 'i686')
license=('Closed Source')
depends=('jre7-openjdk')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("http://downloads.sudotask.com/hou-bin-0.2.2a.tar.gz") 
md5sums=('81117f11a0b98bb9006e8ac8a5ba4c2e')

build() {
  
  tar xzvf "${srcdir}/${pkgname}-${pkgver}.tar.gz"
  
  
  
  install -Dm755 ${srcdir}/${pkgname}-${pkgver}.jar ${pkgdir}/opt/heroes-of-umbra/${pkgname}-${pkgver}.jar
  install -Dm644 ${srcdir}/hou.png ${pkgdir}/usr/share/pixmaps/hou.png
  install -Dm644 ${srcdir}/hou.desktop ${pkgdir}/usr/share/applications/hou.desktop
  
  
}
  
