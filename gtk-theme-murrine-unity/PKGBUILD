# Contributor: Tony Upton <celticmusicguy at gmail dot com>

pkgname=gtk-theme-murrine-unity
pkgver=20110222
pkgrel=1
pkgdesc="A clean and simple GTK theme using the Murrine engine and a matching Metacity theme"
arch=('i686' 'x86_64')
url="http://code.google.com/p/murrine-unity-project/"
license=('GPL')
depends=('gtk-engine-murrine')
source=('http://murrine-unity-project.googlecode.com/files/Murrine-Unity-GTK-20110222.tar.gz')
md5sums=('0cf2d8bb4a5a0915d0fec429a8aa65a1')

build() {
    cd "${srcdir}"
    install -d -m755 "${pkgdir}/usr/share/themes"
    cp -rf Murrine* "${pkgdir}/usr/share/themes"
}


