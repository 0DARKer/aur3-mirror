# Maintainer: Kao Dome <kaodome .:at:. gmail .:dot:. com>

pkgname=dropbox-dark-panel-icons
pkgver=1.0
pkgrel=3
pkgdesc="Notification icons for Dropbox for themes with dark panels."
url="http://forums.dropbox.com/topic.php?id=7818"
arch=('any')
license=('unknown')
depends=('dropbox-experimental') # Until 0.8 branch goes stable.
conflicts=('dropbox-light-panel-icons' 'dropbox-humanity-icons' 'dropbox-humanity-dark-icons')
source=(dropbox-dark-panel-icons.tar.gz::http://dl.dropbox.com/u/62148/Misc/Dropbox%20Dark%20Panel.tar.gz)
sha256sums=('058d57d6db040b3394bc309c37490f7e2d874fc1955d5c4cb7210223984d3680')
_destdir=$pkgdir/opt/dropbox

# The next variable allows you to choose if you want the icons to be system-wide or for the user building the package.
# If set to '1' they will be system-wide, and you'll have to install the package with the -f parameter (forzed install) as the
# replacement icons override the default ones. Note that if you choose them to be system-wide you'll have to reinstall the package
# every time you update the Dropbox one:
_systemwide=1

# Update destination and package name in case it's not built system-wide:
[ "$_systemwide" = "0" ] && _destdir=$pkgdir$HOME/.dropbox-dist/
[ "$_systemwide" = "0" ] && pkgname=dropbox-humanity-dark-icons-for-$USER

build() {
	cd $srcdir
	mkdir -p $_destdir
	cp -r icons $_destdir
}
