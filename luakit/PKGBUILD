# Maintainer:  J. W. Birdsong <jwbirdsong AT gmail DOT com>
pkgname=luakit
pkgver=2010.12.25
_fixver=2010.12.25-r2
pkgrel=3
pkgdesc="luakit is a highly configurable, micro-browser framework based on the WebKit web content engine and the GTK+ toolkit."Stable" release"
arch=('i686' 'x86_64')
url="http://www.luakit.org/projects/luakit" 
license=('GPL3')
depends=('libwebkit' 'luafilesystem' )
makedepends=('git' 'help2man')
options=(!makeflags)  
source=($pkgname.install)
provides=(luakit)
conflicts=('luakit-git' 'luakit-develop-git')
changelog=$pkgname.changelog
install=$pkgname.install
source=("https://github.com/mason-larobina/luakit/tarball/${_fixver} " ${pkgname}.install)
md5sums=('41978de7956f9e9833df545de8270568'
         '7079d8951fd68f7dd68dae71a7bf604e')


build() {
  cd $srcdir
  mv  mason-larobina-luakit-* $pkgname
  cd "$srcdir/$pkgname"
  install -Dm644 "$srcdir/$pkgname/COPYING.GPLv3" "${pkgdir}/usr/share/licenses/$pkgname/LICENSE.GPL"
  make PREFIX=/usr DESTDIR="${pkgdir}/" clean all install
}

