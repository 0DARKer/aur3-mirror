# Maintainer: Leif Warner <abimelech@gmail.com>
# Contributor: Christophe Gueret <christophe.gueret@gmail.com>
pkgname=rtl2832u-git
pkgver=20110804
pkgrel=1
pkgdesc="Kernel26 module for the RTL2832U DVB-T USB2.0 device"
arch=('i686' 'x86_64')
url="https://gitorious.org/rtl2832"
license=('GPL')
depends=('kernel26')
makedepends=('git')
install="${pkgname}.install"
provides=('rtl2832u')
conflicts=('rtl2832u')
source=('makefile.patch')
md5sums=('fe461b30173b2bfbf4c6f176a09da645')

_gitroot="git://gitorious.org/rtl2832/rtl2832.git"
_gitname="rtl2832"


build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  patch -p1 < "$srcdir/makefile.patch"
  
  export KBUILD_SRC="/usr/src/linux-$(uname -r)"
  make build
}

package() {
  sed -e  "s#KERNEL_VERSION=.*#KERNEL_VERSION=$(uname -r)#g" -i "${startdir}/${install}"
  
  cd "$srcdir/$_gitname-build"

  export INSTALL_MOD_PATH="${pkgdir}"
  export INSTALL_MOD_DIR="kernel/drivers/media/dvb/dvb-usb"
  make install
} 
