# Maintainer: Christoph Vigano  <mail@cvigano.de>
_author=BDFOY
_perlmod=Tie-Cycle
pkgname=perl-tie-cycle
pkgver=1.19
pkgrel=1
pkgdesc="Cycle through a list of values via a scalar"
arch=('any')
url="http://search.cpan.org/~$_author/$_perlmod-$pkgver/"
license=('Artistic 2.0')
depends=('perl>=5.10.0')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/Tie-Cycle-$pkgver.tar.gz)
sha256sums=('bd315874c85feaf8948eeb2f40fe2768a6ca00f089e35b32bfe88f3f384f9ca1')

build() {
  cd "$srcdir/$_perlmod-$pkgver"

  # Install module in vendor directories.
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'" \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

  /usr/bin/perl Makefile.PL &&
  make
}

package() {
  cd "$srcdir/$_perlmod-$pkgver"
  make install DESTDIR="$pkgdir/"
}

