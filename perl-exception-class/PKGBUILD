pkgname='perl-exception-class'
pkgver='1.32'
pkgrel='1'
pkgdesc="Declare exception class hierarchies"
arch=('any')
url='http://search.cpan.org/dist/Exception-Class'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-class-data-inheritable>=0.02' 'perl-devel-stacktrace>=1.20')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Exception-Class-1.32.tar.gz')
md5sums=('83788ad5a2c5e946877e4ec362e19622')

build() {
  DIST_DIR="${srcdir}/Exception-Class-1.32"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

