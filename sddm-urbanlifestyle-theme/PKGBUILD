# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

_themename=urbanlifestyle
pkgname=sddm-${_themename}-theme
pkgver=0.1.1
pkgrel=1
pkgdesc="A simple and colorful SDDM theme."
arch=(
	"any"
)
url="https://github.com/AlfredoRamos/sddm-urbanlifestyle-theme"
license=(
	"GPL3"
)

depends=(
	"sddm"
)
optdepends=()
makedepends=()
provides=(
	"${pkgname}=${pkgver}"
)
conflicts=()
replaces=()

install=${pkgname}.install

source=(
	"${pkgname}-${pkgver}.tar.gz::https://github.com/AlfredoRamos/${pkgname}/archive/${pkgver}.tar.gz"
	"${pkgname}.install"
)
sha384sums=(
	"ae66bdb46ff56f9ceca1371704d9c4155bce59bdc37a2a1164fa554a8179fba064a8cee230f59e69f3a10e1ab489331b"
	"e130f0bb6626d9b86d577a774ae36a0d73533003c42b8805e7e7565cb9a159aeddc4ed35be799ef987968f613623ea41"
)
sha512sums=(
	"6201631c922e08734ca333dbce07f5695ff943e12901ed1f7a47c36eec4fdc793e1b192bacf449be2fbb615f9d8bb6b71df9b698c2d8aa85e3428e486fa54339"
	"5b2fdb21db351c6aeb0d36ff74f54f217d50ee19bc60505fad547f7567ba1837569fbcff58a65d52d8097c6456825f42a05580f41369349a69f1baae06483bd9"
)

package() {
	# Change working directory
	cd ${srcdir}/${pkgname}-${pkgver}
	
	msg2 "Installing theme..."
	mkdir -p ${pkgdir}/usr/share/sddm/themes/${_themename}
	cp ./* ${pkgdir}/usr/share/sddm/themes/${_themename}
	
	msg2 "Installing license..."
	mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
	cp ./LICENSE ${pkgdir}/usr/share/licenses/${pkgname}
}