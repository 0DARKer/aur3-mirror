# Contributor: froggie <sullivanva@gmail.com>
pkgname=netmaze
pkgver=0.81
pkgrel=1
pkgdesc="Smiley network shooter game"
url="ftp://sunsite.unc.edu/pub/Linux/games/multiplayer/mazewars/"
depends=('xorg' 'glibc')
source=(ftp://sunsite.unc.edu/pub/Linux/games/multiplayer/mazewars/netmaze-0.81.tgz)
md5sums=('4fc906f82dcfeb9e10fa234331407d62')

build() {
  cd $startdir/src/netmaze/
  /usr/bin/patch -i ../../netmaze.diff
  touch netmaze.man netserv.man
  /usr/X11R6/bin/xmkmf
  make || return 1
  mkdir -p $startdir/pkg/usr/games/netmaze/
  cp ../../README $startdir/pkg/usr/games/netmaze/
  install -m 755 netmaze betterbot netserv follower dummy $startdir/pkg/usr/games/netmaze/
  mkdir -p $startdir/pkg/usr/games/netmaze/bitmaps/
  mkdir -p $startdir/pkg/usr/games/netmaze/lib/
  mkdir -p $startdir/pkg/usr/games/netmaze/mazes/
  install -m 644 bitmaps/* $startdir/pkg/usr/games/netmaze/bitmaps/
  install -m 644 lib/* $startdir/pkg/usr/games/netmaze/lib/
  install -m 644 mazes/* $startdir/pkg/usr/games/netmaze/mazes/
}

