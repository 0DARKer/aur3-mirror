# Contributor: Aline Freitas <aline@bsd.com.br>

pkgname=firefox-spell-pt-br
pkgver=1.7
_fx_ver=2.0
pkgrel=1
pkgdesc="Brazilian Portuguese language dictionary (spellcheker) for Firefox"
arch=(any)
url="https://addons.mozilla.org/firefox/dictionaries/"
license="GPL"
depends=("firefox>=${_fx_ver}")
source=(http://releases.mozilla.org/pub/mozilla.org/addons/6081/verificador_ortografico_para_portugues_do_brasil-${pkgver}-tb+sb+fx+fn+sm.xpi)
md5sums=('f327bad96476f91eb599b91a19084094')

build() {
        cd $startdir/src/dictionaries
	install -D -m 644 pt_BR.aff ${pkgdir}/usr/share/myspell/pt_BR.aff || return 1
	install -D -m 644 pt_BR.dic ${pkgdir}/usr/share/myspell/pt_BR.dic || return 1
}
