# Maintainer : ra_fi <radu_f@gmx.de>

pkgname=rawstudio-svn
pkgver=3206
pkgrel=1
pkgdesc="An open source raw-image converter written in GTK+."
arch=('i686' 'x86_64')
license="GPL"
url="http://rawstudio.org/"
depends=('gconf' 'libxml2' 'lcms' 'exiv2' 'lensfun' 'fftw')
makedepends=('subversion' 'autoconf' 'autogen' 'flickcurl')
conflicts=('rawstudio')
source=()
md5sums=()

_svntrunk=https://rawstudio.org/svn/rawstudio/trunk/
_svnmod=rawstudio

build() {
	cd $startdir/src/
	svn co $_svntrunk $_svnmod
	cd $_svnmod

  	./autogen.sh --prefix=/usr
  	make || return 1
  	make prefix=$startdir/pkg/usr install
}
