# Contributor: Nicolas Doualot <packages@slubman.info>

_basename=textile
pkgname=python-textile
pkgver=2.1.4
pkgrel=2
pkgdesc="A Python textile to XHTML generator"
arch=('any')
depends=('python2') 
license=('BSD')
source=(http://cheeseshop.python.org/packages/source/t/$_basename/$_basename-$pkgver.tar.gz)
url="http://cheeseshop.python.org/pypi/textile"

build() {
   cd "${srcdir}/$_basename-$pkgver"
   python2 ./setup.py build
}

package() {
   cd "${srcdir}/$_basename-$pkgver"
   python2 ./setup.py install --root="${pkgdir}" || return 1

   # use python2
   find "${pkgdir}" -name '*.py' | \
   xargs sed -i 's@#!/usr/bin/env python$@#!/usr/bin/env python2@g'
}

md5sums=('05ebee989379d5930e779f85d276abed')
sha256sums=('ca1b14ee4bd34cb72fc95e2960f4e591fc9d019196d7a1dfeaa17ca9ece89632')
