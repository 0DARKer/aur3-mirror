pkgname=libimobiledevice-ios7fix
pkgver=1.1.6
pkgrel=1
pkgdesc="Fixed trusted popup for IOS7. Is a software library that talks the protocols to support iPhone and iPod Touch devices on Linux"
url="http://libimobiledevice.org/"
arch=('i686' 'x86_64')
license=('GPL2' 'LGPL2.1')
provides=('libimobiledevice')
conflicts=('libimobiledevice')
depends=('usbmuxd' 'gnutls' 'libgcrypt')
source=(https://github.com/viadanna/libimobiledevice/archive/1.1.6.zip)

build() {
  cd "libimobiledevice-$pkgver"

  PYTHON=/usr/bin/python2 ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "libimobiledevice-$pkgver"
  make DESTDIR="$pkgdir" install
}
md5sums=('ba7cf0fe1b43ecee37869a18b63eef7a')
