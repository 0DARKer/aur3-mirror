pkgname=flashplayer11
pkgver=071311
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Adobe Flash Player 11"
url="http://labs.adobe.com/downloads/flashplayer11.html"
license=('custom')
depends=()
makedepends=()
conflicts=('flashplugin-prerelease', 'flashplugin')
provides=('flashplayer', 'flashplugin')

case $CARCH in
    'i686')
        source=(http://download.macromedia.com/pub/labs/flashplatformruntimes/flashplayer11/flashplayer11_b1_install_lin_32_$pkgver.tar.gz)
        md5sums=('8816dfa0bbb4210df5a37e061834c24a')
    ;;
    'x86_64')
        source=(http://download.macromedia.com/pub/labs/flashplatformruntimes/flashplayer11/flashplayer11_b1_install_lin_64_$pkgver.tar.gz)
        md5sums=('806b348cfb27054568d9f63d13bee3fd')
    ;;
esac

package() {
    cp -ar $srcdir/usr $pkgdir/
    mkdir -p $pkgdir/usr/lib/mozilla/plugins/
    cp $srcdir/libflashplayer.so $pkgdir/usr/lib/mozilla/plugins/
}
