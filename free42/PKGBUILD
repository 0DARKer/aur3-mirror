# Contributor: Vladimir Cerny <blackvladimir@gmail.com>
pkgname=free42
pkgver=1.4.66
pkgrel=1
pkgdesc="A complete re-implementation of the HP-42S calculator and the HP-82240 printer."
arch=('i686' 'x86_64')
url="http://thomasokken.com/free42/"
license=('GPL')
depends=('libxmu' 'gtk2')
#source=("http://downloads.sourceforge.net/sourceforge/free42/$pkgname.$pkgver.tgz")
source=("http://thomasokken.com/free42/download/free42.tgz")
md5sums=('f725058a539aac91e6f81a2d4c242df7')

build() {

  cd "$startdir/src/$pkgname/gtk"

  make cleaner
  make
  make clean
  make BCD_MATH=1
  
  install -d "$startdir/pkg/usr/bin"
  cp free42bin "$startdir/pkg/usr/bin"
  cp free42dec "$startdir/pkg/usr/bin"
  echo "$startdir/pkg/usr/share/doc/Free42"
  install  -d  "$startdir/pkg/usr/share/$pkgname"
  cp README "$startdir/pkg/usr/share/$pkgname"
}

# vim:set ts=2 sw=2 et:
