# Contributor: Sergio Montesinos <sermonpe@yahoo.es>
pkgname=razor-qt
pkgver=0.3.0
pkgrel=1
pkgdesc="Razor is a toolbox-like desktop-environment"
url="http://razor-qt.sf.net"
arch=('i686' 'x86_64')
license="GPL"
depends=('qt')
makedepends=('cmake')
source=(http://downloads.sourceforge.net/project/razor-qt/razorqt-$pkgver.tar.bz2)
md5sums=(bf53bac8f3e74cea504415a3c0110ec8)

build() {
  cd $startdir/src/razorqt-$pkgver

  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}
package() {
  cd "$srcdir/razorqt-$pkgver"
  make DESTDIR="$pkgdir/" install
}

