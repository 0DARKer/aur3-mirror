# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python2-nikola-git
_pyname=nikola
_gitname=nikola
pkgver=5.4.3_28_g266d868
pkgrel=1
pkgdesc='A static website and blog generator.  (git version)'
arch=('any')
url='http://nikola.ralsina.com.ar/'
license=('custom')
depends=('python2' 'python2-doit' 'python2-pygments' 'python2-docutils'
         'python2-pillow' 'python2-mako' 'python2-unidecode' 'python2-lxml'
         'python2-yapsy' 'python2-mock>=1.0.0' 'python2-requests' 'python2-markdown'
         'python2-jinja' 'python2-pyrss2gen' 'python2-pytz')
makedepends=('git')
options=(!emptydirs)
provides=('nikola')
conflicts=('nikola')
source=("git://github.com/ralsina/${_gitname}.git")
md5sums=('SKIP')

package() {
  cd "${srcdir}/${_gitname}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

pkgver() {
  cd "${srcdir}/${_gitname}"
  git describe --always | sed 's/-/_/g;s/v//'
}

# vim:set ts=2 sw=2 et:
