# Maintainer: Michael Schubert <mschu.dev at google mail>
pkgname=codepy
pkgver=0.91
pkgrel=1
pkgdesc="CodePy is a C/C++ metaprogramming toolkit for Python."
arch=(i686 x86_64)
url="http://mathema.tician.de/software/codepy"
license=('MIT')
depends=(python2)
makedepends=(pytools)
optdepends=()
provides=()
source=(http://pypi.python.org/packages/source/c/codepy/$pkgname-$pkgver.tar.gz)
md5sums=(92093faf617ce457d28aeb22bda3409b)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py install --prefix=/usr --root=$pkgdir
}
