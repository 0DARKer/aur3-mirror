# Maintainer: Michael Schubert <mschu.dev at google mail>

pkgname=codepy
pkgver=2011.1
pkgrel=1
pkgdesc="A C/C++ metaprogramming toolkit for Python"
arch=('i686' 'x86_64')
url="http://mathema.tician.de/software/codepy"
license=('MIT')
depends=('python2')
makedepends=('pytools')
optdepends=()
provides=()
source=("http://pypi.python.org/packages/source/c/codepy/$pkgname-$pkgver.tar.gz")
md5sums=('33e2ad48432e2e7a8e2297eaca71ed3f')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py install --prefix=/usr --root="$pkgdir"
}
