# Contributor: Berkus <berkus@madfire.net>

pkgname=khalkhicards
pkgver=0.2.2_rc1
pkgrel=1
pkgdesc="Floating Khalkhi cards"
arch=(i686)
url="http://www.kde-apps.org/content/show.php?content=54452"
license=('GPL')
depends=('khalkhi')
source=(http://kde-apps.org/CONTENT/content-files/54452-$pkgname-${pkgver/_/-}.tar.bz2)
md5sums=('55dbefca4fb1cc0fc029a947c3b97223')

build() {
  . /etc/profile.d/qt.sh
  cd $startdir/src/$pkgname-${pkgver/_/-}
  ./configure --prefix=/opt/kde
  make || return 1
  make DESTDIR=$startdir/pkg install
}
