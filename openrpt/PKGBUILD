# Contributor: Lucas Hermann Negri <kkndrox@gmail.org>

pkgname=openrpt
pkgver=3.2.0
pkgrel=1
pkgdesc="Free Open Source SQL Report Writer" 
arch=(i686 x86_64)
url="http://www.xtuple.com/openrpt" 
depends=('qt')
license=(LGPL)
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver-source.tar.bz2)
md5sums=('208e0689a9d3aed65fb10bb86ef3df2f')

build() { 
	cd $srcdir/$pkgname-$pkgver-source
	qmake
	make || return 1
	mkdir -p $pkgdir/opt/openrtp
	cp $srcdir/$pkgname-$pkgver-source/bin/* $pkgdir/opt/openrtp
}
