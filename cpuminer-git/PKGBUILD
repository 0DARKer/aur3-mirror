pkgname=cpuminer-git
pkgver=20130323
pkgrel=1
pkgdesc="Multi-threaded CPU miner for Bitcoin and Litecoin (git version)"
arch=('i686' 'x86_64')
url="https://github.com/pooler/cpuminer"
license=('GPLv2')
depends=('curl' 'jansson')
makedepends=('git' 'yasm')
source=(rc-script.cpuminer
        cpuminer.conf)
md5sums=('b50db28641e7dd4554096639f19215b8'
         '96ee832cea2ff946bb890669cc7d34a0')
backup=(etc/conf.d/cpuminer.conf etc/cpuminer.json)

_gitroot="http://github.com/pooler/cpuminer.git"
_gitname="cpuminer"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"

  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # Use in-tree jansson
  # sed -e 's/^AC_CHECK_LIB(jansson, json_loads, request_jansson=false, request_jansson=true)$/request_jansson=true/' -i configure.ac
  ./autogen.sh
  # Here you may want to use custom CFLAGS
  #export CFLAGS="-O2 -march=native -mtune=native -msse2"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install

  install -Dm600 "example-cfg.json" "$pkgdir/etc/cpuminer.json"
  install -Dm644 "$srcdir/cpuminer.conf" "$pkgdir/etc/conf.d/cpuminer.conf"
  install -Dm755 "$srcdir/rc-script.cpuminer" "$pkgdir/etc/rc.d/cpuminer"
}
