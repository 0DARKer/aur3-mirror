# Contributor: Lee.MaRS <leemars@gmail.com>
pkgname=fuse-convmvfs
pkgver=0.2.4
pkgrel=1
pkgdesc="A userland file system to convert filename charset."
arch=('i686' 'x86_64')
url="http://fuse-convmvfs.sourceforge.net"
license=('GPL')
groups=()
depends=('fuse' 'gcc-libs')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://downloads.sourceforge.net/fuse-convmvfs/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('e600a351d2e118f866c1d6ca29cafaf8') 

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

