_pkgbasename=gnome-keyring
pkgname=lib32-$_pkgbasename
pkgver=3.0.1
pkgrel=1
pkgdesc="GNOME Password Management daemon (32 bit, library only)"
arch=('x86_64')
url="http://www.gnome.org"
license=('GPL' 'LGPL')
depends=('lib32-gtk3' "$_pkgbasename=$pkgver")
makedepends=('intltool' 'gcc-multilib' 'dconf')
options=('!libtool' '!emptydirs' '!makeflags')
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgbasename}/3.0/${_pkgbasename}-${pkgver}.tar.bz2)
sha256sums=('1b296fc58fb189c9632fdd8a8a8a2dbb0af97db1529af87d73e21a96c4b78c03')

build() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --libdir=/usr/lib32 \
      --libexecdir=/usr/lib32/gnome-keyring \
      --with-pam-dir=/usr/lib32/security \
      --with-root-certs=/etc/ssl/certs \
      --disable-schemas-compile \
      CC='gcc -m32'
  make
}

package() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm -rf ${pkgdir}/{etc,usr/{bin,include,share}}
}
