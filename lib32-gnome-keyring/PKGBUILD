pkgname=lib32-gnome-keyring
pkgver=2.32.1
pkgrel32=1
pkgrel=1
pkgdesc="GNOME Password Management daemon"
url="http://www.gnome.org"
license=('LGPL')
arch=('x86_64')
depends=('lib32-gconf' 'hal')
groups=('lib32')
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
md5sums=('9ccf13c98509b6d84ef134ca7a4f3493')

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr/lib/
  cp -R ${startdir}/src/usr/lib/*.so* ${startdir}/pkg/opt/lib32/usr/lib
  cp ${startdir}/src/lib/security/pam_gnome_keyring.so ${startdir}/pkg/opt/lib32/usr/lib
  cp -rPf ${startdir}/src/usr/lib/gnome-keyring/*.so* ${startdir}/pkg/opt/lib32/usr/lib
}
