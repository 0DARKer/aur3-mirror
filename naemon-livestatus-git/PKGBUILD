# Maintainer: Jonathan Steel <jsteel at aur.archlinux.org>

_pkgname=naemon
_gitname=naemon-livestatus
pkgname=naemon-livestatus-git
pkgver=0.8.0.r61.g8cf8427
pkgrel=1
pkgdesc="Standard API for Naemon"
arch=('i686' 'x86_64')
url="http://naemon.org"
license=('GPL2')
depends=('icu')
makedepends=('git')
source=(git://github.com/naemon/naemon.git)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir"/$_pkgname

  git describe --tags | sed -r 's/([^-]*-g)/r\1/;s/-/./g;s/^v//' 
}

build() {
  cd "$srcdir"/$_pkgname/$_gitname

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir"/$_pkgname/$_gitname

  make DESTDIR="$pkgdir"/ install
}
