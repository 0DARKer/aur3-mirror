# Maintainer: Romain Porte <microjoe@mailoo.org>

pkgname=tpl-git
pkgver=v0.1.1
pkgrel=1
pkgdesc="Write template-based source code on stdout"
arch=('i686' 'x86_64')
url="https://bitbucket.org/MicroJoe/tpl"
license=('GPL')
groups=()
depends=('python' 'python-jinja')
makedepends=('git')
checkdepends=()
optdepends=()
provides=('tpl')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('git+https://bitbucket.org/MicroJoe/tpl')
noextract=()
md5sums=('SKIP')

_gitname='tpl'

pkgver() {
	cd "$srcdir/$_gitname"
	git describe --tags | sed 's/-/./g'
}

package() {
	cd "$_gitname"

	mkdir -p "$pkgdir/usr/bin"
	python setup.py install --root="$pkgdir/"

	install -Dm644 COPYING \
		${pkgdir}/usr/share/licenses/${pkgname}/LICENSE

	install -Dm644 tpl.1 \
		${pkgdir}/usr/share/man/man1/tpl.1
}
