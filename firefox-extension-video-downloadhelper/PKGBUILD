# Maintainer: Tianjiao Yin <ytj000+aur@gmail.com>

_plugin_name=video-downloadhelper
_plugin_version=4.9.6
_plugin_id=3006
pkgdesc="Plugin for firefox. The easy way to download and convert Web videos from hundreds of YouTube-like sites."
license=('custom')

pkgname=firefox-extension-$_plugin_name
pkgver=$_plugin_version
pkgrel=1
arch=('any')
url="https://addons.mozilla.org/firefox/addon/$_plugin_id"
depends=("firefox>=8.0" "firefox<10.0")
source=("https://addons.mozilla.org/firefox/downloads/file/135400/video_downloadhelper-4.9.6-sm+fx.xpi")
md5sums=('3d7caf4cbb3564906944aedbd7d8cbcf')


build() {
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/extensions/${emid}
  install -d $dstdir
  #sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>8.*</em:maxVersion>#' install.rdf
  mv * $dstdir
}
