# Maintainer: Maxence Sartiaux <makz@sartiaux.be>

pkgname=feedthebeast
pkgver=latest
pkgrel=5
pkgdesc="Feed The Beast minecraft launcher"
arch=(any)
license=('custom')
url="http://feed-the-beast.com/"
depends=('java-runtime' 'xorg-server-utils' 'openal' 'ttf-dejavu')
noextract=('feedthebeast.jar')
source=(feedthebeast feedthebeast.jar Feed\ The\ Beast.desktop feedthebeast.png feedthebeast.install)
md5sums=('aeb61a4aebdcd4c97dda143fe0b8527a'
         'f102e121303c6bbc6f0700f8c4104163' 
         'ba67cda0a5a222805c56e88576a8d5b8'
         '0d087d4fe25df9a91aa8af057e9ece39'
         'a4c3bed2a38af1ca1f9d08ddd3e6f7b3')
install='feedthebeast.install'

build() {
    cd "$srcdir" || return 1

    install -D -m755 "${srcdir}/feedthebeast"         "${pkgdir}/usr/bin/feedthebeast"
    install -D -m644 "${srcdir}/feedthebeast.jar"     "${pkgdir}/usr/share/feedthebeast/feedthebeast.jar"

    # Desktop launcher with icon
    install -D -m644 "${srcdir}/Feed The Beast.desktop" "${pkgdir}/usr/share/applications/Feed The Beast.desktop"
    install -D -m644 "${srcdir}/feedthebeast.png"     "${pkgdir}/usr/share/pixmaps/feedthebeast.png"
}

# vim:set ts=4 sw=4 et:

