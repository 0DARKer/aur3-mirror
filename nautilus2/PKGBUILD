# Maintainer: Roman Kyrylych <Roman.Kyrylych@gmail.com>
# Contributor: William Rea <sillywilly@gmail.com>

pkgname=nautilus2
tarname=nautilus
tarver=2.32.2.1
pkgver=2.32
pkgrel=1
pkgdesc="The GNOME shell and file manager."
arch=('i686' 'x86_64')
url="ftp://ftp.gnome.org/pub/GNOME/sources/"
license=('GPL')
depends=('gnome-desktop2')
makedepends=('pkgconfig' 'intltool')
conflicts=('nautilus')
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$tarname/$pkgver/${tarname}-${tarver}.tar.gz)

md5sums=('9ef164cc3482b77c17629853e3ae1b08')

provides=('nautilus2')
options=('!libtool')

build() {
  cd "$srcdir/$tarname-$tarver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
	--disable-update-mimedb \
	--enable-maintainer-mode

  make || return 1
  make DESTDIR="$pkgdir" install
}
