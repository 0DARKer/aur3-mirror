pkgname=copyq-git
pkgver=20130128
pkgrel=1
pkgdesc="Clipboard manager with searchable and editable history, custom actions on items and command line support."
url="http://qt-apps.org/content/show.php/CopyQ?content=147452"
depends=('qt')
optdepends=('qtwebkit: For displaying rich content')
makedepends=('cmake' 'git')
license=('GPL3')
arch=('i686' 'x86_64')
provides=('copyq')
conflicts=('copyq')

_gitroot="git://github.com/hluk/CopyQ.git"
_gitname="CopyQ"

build() {
        cd "$srcdir"
        if [ -d "$srcdir/$_gitname" ] ; then
                cd $_gitname && git pull origin
        else
                git clone $_gitroot
        fi
        cd "$srcdir/$_gitname"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr ..
	make
}

package() {
	cd "$srcdir/$_gitname/build"
	make DESTDIR="$pkgdir" install

}
