# Contributor: Renato Coutinho <renato.coutinho@gmail.com>

pkgname=symphonic
pkgver=0.2.1alpha
pkgrel=1
pkgdesc="A portable MP3/WMA/OGG/Podcast file manager for Sony players."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/symphonic/"
depends=('jre')
license=('GPL')
source=(http://downloads.sourceforge.net/symphonic/JSymphonic_$pkgver.zip)
md5sums=('5c034125167c5257d89f7b8511ba22e4')

build() {
  cd $startdir/src

  install -D -m644 JSymphonic_0.2.1a.jar $startdir/pkg/usr/share/symphonic/JSymphonic.jar
  install -D -m644 symphonic_settings.xml $startdir/pkg/usr/share/symphonic/symphonic_settings.xml
  install -D -m755 ../symphonic $startdir/pkg/usr/bin/symphonic
}
