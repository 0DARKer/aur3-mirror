# Contributor: Chris O'Donnell <christopher dot p dot odonnell at gmail dot com>
pkgname=leiningen
pkgver=20101206
pkgrel=2
pkgdesc="A build tool for the Clojure programming language."
arch=('i686' 'x86_64')
url="http://github.com/technomancy/leiningen"
license=("EPL")
depends=('java-environment')
makedepends=()

build() {
  mkdir -p ${pkgdir}/usr/bin/
  cd ${srcdir}
  wget https://github.com/technomancy/leiningen/raw/stable/bin/lein \
  --no-check-certificate
  install -m 755 -D lein ${pkgdir}/usr/bin/
  ${pkgdir}/usr/bin/lein
}
