_pkgbasename=libgnomeui
pkgname=lib32-$_pkgbasename
pkgver=2.24.4
pkgrel=2
pkgdesc="User Interface library for GNOME (32 bit)"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
depends=('lib32-libbonoboui' 'lib32-libgnome-keyring')
makedepends=('intltool' 'gcc-multilib')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgbasename}/${pkgver%.*}/${_pkgbasename}-${pkgver}.tar.bz2)
sha256sums=('a64dcb5af190ec0bfe2ba647ab09a90e4187336fa417d301abfb736be41283b2')

build() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  ./configure --sysconfdir=/etc --localstatedir=/var \
  	   --disable-static --libexecdir=/usr/lib32/libgnomeui \
  	   --libdir=/usr/lib32 --prefix=/usr CC='gcc -m32'
  make
}

package() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm -rf ${pkgdir}/usr/{include,share}
}
