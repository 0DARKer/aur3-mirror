pkgname=digikam-frameworks-git
pkgver=v4.6.0.363.g74567eb
pkgrel=1
pkgdesc='Digital photo management application for KDE. KF5 Frameworks branch (GIT Version)'
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.digikam.org/"
depends=('libkdcraw-frameworks-git'  'libkexiv2-frameworks-git'  'libkipi-frameworks-git' 'libkface-frameworks-git'
         'kdelibs4support' 'knotifyconfig' 'lensfun' 'libpgf' 'libgphoto2' 'liblqr' 'sqlite2')
makedepends=('eigen' 'doxygen' 'boost' 'extra-cmake-modules' 'kdoctools' 'git')
optdepends=('kipi-plugins-frameworks-git: for more tools and plugins')
conflicts=('digikam')
provides=('digikam')
install=digikam-frameworks-git.install
source=('git://anongit.kde.org/digikam.git#branch=frameworks')
sha1sums=('SKIP')
_gitname=digikam

pkgver() {
  cd "${_gitname}"
  #printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  echo "$(git describe --long --tags | tr - .)"
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake  "../${_gitname}" \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF \
    -DENABLE_MYSQLSUPPORT=ON \
    -DENABLE_LCMS2=ON

  make
}

package() {
  make -C build DESTDIR="${pkgdir}" install
}
