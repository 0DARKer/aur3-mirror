pkgname=leocad
pkgver=0.75.1
pkgrel=1
pkgdesc="LeoCAD is a CAD program that uses bricks similar to those found in many toys (but they don't represent any particular brand)."
arch=(i686)
url="http://leocad.gerf.org/"
license=('GPL')
depends=('zlib' 'libjpeg' 'libpng' 'gtk2' 'mesa' 'unzip')
source=(http://leocad.gerf.org/files/$pkgname-$pkgver-test.zip
		http://leocad.gerf.org/files/pieces.zip
		http://leocad.gerf.org/files/update18.zip)
md5sums=('9412866aa5b85482624b4eb95d801c6c'
		 'f5c8926d1e992f0a8717588e2143fffe'
		 '64b783751f6e5dc535a1bef6b1427737')

build() {
  cd $startdir/pkg
  mkdir -p usr/local/share/leocad/
  unzip -o ../$pkgname-$pkgver-test.zip -d usr/local/share/leocad/
  unzip -o ../pieces.zip -d usr/local/share/leocad/
  unzip -o ../update18.zip -d usr/local/share/leocad/
  mkdir -p usr/bin
  ln -s /usr/local/share/leocad/leocad usr/bin/leocad
}
