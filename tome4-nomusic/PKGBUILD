pkgname=tome4-nomusic
_pkgname=tome4
pkgver='1.0.0beta28'
pkgrel=1
pkgdesc="Single-player roguelike set in the world of Eyal. No sound version (-71Mb)."
arch=('i686' 'x86_64')
url="http://tome.te4.org/"
license=('GPL3')
provides=('tome4')
depends=('mesa' 'sdl_image' 'sdl_ttf' 'sdl_mixer')
makedepends=('premake4')
source=("http://te4.org/dl/t-engine/t-engine4-src-${pkgver}-nomusic.tar.bz2"
        'tome4')
md5sums=('e84baf1ab70f40d0f23dc90a9c375107'
         '2c95e21eed72cb7f8f1826c1f1b2c703')

build() {
    cd "${srcdir}/t-engine4-src-$pkgver"

    premake4 gmake
    make
}
package() {
    cd "${srcdir}/t-engine4-src-$pkgver"

    destdir="${pkgdir}/opt/${pkgname}/"

    install -d ${destdir}
    cp -r bootstrap/ game/ CONTRIBUTING COPYING CREDITS bin/Debug/t-engine "${destdir}"

    install -Dm755 "${srcdir}/${_pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
