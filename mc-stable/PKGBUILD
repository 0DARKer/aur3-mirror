# Contributer: vilosim <vilosim@gmail.com>
pkgname=mc-stable
pkgver=4.7.0.10
pkgrel=1
pkgdesc="Midnight Commander - a visual file manager, stable branch (for servers, etc.)"
arch=('i686' 'x86_64')
url="http://www.ibiblio.org/mc/"
license=('GPL')
depends=('e2fsprogs' 'glib2' 'pcre' 'slang')
optdepends=('p7zip: support for 7zip archives')
provides=('mcedit-pkgbuild-syntax')
conflicts=('mc' 'mc-utf8')
replaces=('mc' 'mc-utf8')
options=('!emptydirs' '!makeflags')
source=("http://www.midnight-commander.org/downloads/mc-${pkgver}.tar.bz2")
md5sums=('127dc0641bf122d2f65ec8b839c81404')

build() {
	cd ${srcdir}/mc-${pkgver}

	./configure \
	    --prefix=/usr --sysconfdir=/etc --mandir=/usr/share/man \
	    --libexecdir=/usr/lib \
	    --disable-static --without-gpm-mouse --with-samba \
	    --with-screen=slang --with-subshell --with-vfs \
	    --without-included-gettext

	make
}

package() {
	cd ${srcdir}/mc-${pkgver}
	make DESTDIR=${pkgdir} install
}

