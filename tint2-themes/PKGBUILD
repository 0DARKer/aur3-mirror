# Maintainer: wido <widomaker2k7@gmail.com>

pkgname=tint2-themes
_pkgname=tint2
pkgver=0.10
pkgrel=1
pkgdesc="Theme for tint2"
license=(GPL3)
arch=('i686' 'x86_64')
depends=('tint2')
url="http://tint2.googlecode.com/"
source=(http://tint2.googlecode.com/files/$_pkgname-$pkgver-theme.tar.gz)
sha1sums=('e80c5bc2e40fade2175365ae935f4f08bc022d1c')

build() {
	install -d ${pkgdir}/usr/share/tint2/themes/
    cd ${srcdir}/${_pkgname}-${pkgver}-theme
    cp ./*.tint2rc ${pkgdir}/usr/share/tint2/themes/ || return 1
}
