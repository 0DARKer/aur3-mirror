# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdeplasma-addons-svn
pkgver=1199330
pkgrel=1
pkgdesc="Additional applets for the KDE desktop shell Plasma"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL')
depends=('kdebase4-workspace-svn' 'scim' 'eigen')
makedepends=('cmake' 'subversion')

provides=(kdeplasma-addons)
conflicts=(kdeplasma-addons)

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdeplasma-addons/
_svnmod=kdeplasma-addons

build() {
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
cd $_svnmod

cd $srcdir
  mkdir $_svnmod-build
  cd $_svnmod-build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/usr
make DESTDIR=$pkgdir install
rm -r cmake $startdir/src/$_svnmod-build
}
