# Contributor: Lucas Hermann Negri <lucashnegri@gmail.com>

pkgname=lgob
pkgver=11.04
pkgrel=1
pkgdesc="Set of Lua bindings that uses gobject-instrospection"
arch=('i686' 'x86_64')
url="http://oproj.tuxfamily.org" 
depends=('lua>=5.1' 'vte' 'libwebkit' 'gtksourceview2'
	'gtkspell' 'poppler-glib' 'goocanvas' 'clutter-gtk'
    'gtkglext' 'gstreamer0.10')
makedepends=('gcc')
license=(LGPL)
source=("http://downloads.tuxfamily.org/oproj/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=("1e943299ab2462e4d9d9c4443d65fafb")

build() { 
  cd "$startdir/src/$pkgname-$pkgver"
  
  if [ ${CARCH} = 'i686' ]; then
    lua build_all.lua ${startdir}/pkg/usr
  else
    lua build_all.lua ${startdir}/pkg/usr AMD64
  fi
}
