# Contributor: Andrew Kravchuk <awkravchuk@gmail.com>
# Contributor: aericson <de.ericson@gmail.com>

pkgname=aarchup
pkgver=1.7.1
pkgrel=1
pkgdesc="Fork of archup a small and lightweight update-notifier for archlinux."
branch=master
url="https://github.com/aericson/aarchup"
arch=('i686' 'x86_64')
license="GPL"
depends=('pacman' 'libnotify' 'gtk2')
makedepends=('libnotify' 'autoconf' 'gzip')
source=("https://github.com/aericson/aarchup/archive/$branch.zip")
md5sums=('5ca6c19c1f0ee543100122bb9e76fbd3')
backup=('etc/systemd/system/aarchup.timer')
optdepends=('cower: AUR support(--aur)')
install='aarchup.install'

prepare() {
	mv -v $pkgname-$branch/src/* $pkgname-$branch/
  rmdir $pkgname-$branch/src
}

build() {
	cd $pkgname-$branch/
	autoconf || return 1
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd $pkgname-$branch/
	make DESTDIR="$pkgdir/" install || return 1
}
