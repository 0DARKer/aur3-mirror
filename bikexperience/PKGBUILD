# Maintainer: Luis von Bernus <PaterSiul@gmail.com>

pkgname=bikexperience
pkgver=4.2.0
pkgrel=2
pkgdesc="Software for outdoor training planning and gpx-track-management"
arch=('any')
url="http://www.bikexperience.de/"
license=('GPL')
depends=('java-runtime')
optdepends=('rxtx: for serial connection with bike computers')
source=('http://www.mtb-rhein-main.de/php/clicktracker/clicktracker.php?id=14' 'bikeXperience.desktop')
md5sums=('fbc9e547476f7aef78bd2c537052d6fa'
         '2e36ceec3009dcd84ae6ce724ecb0d37')

build() {
	mkdir -p $pkgdir/opt/bikexperience $pkgdir/usr/share/applications $pkgdir/usr/share/icons/hicolor/100x100/apps/
 install -D -m 755 $srcdir/bikeXperience.jar $pkgdir/opt/bikexperience/
 install -D $srcdir/linux/bikeXperience.sh $pkgdir/opt/bikexperience/
 install -D $srcdir/linux/bXp-rxtx-setup.sh $pkgdir/opt/bikexperience/
 cp -r $srcdir/rxtx $pkgdir/opt/bikexperience/
 cp -r $srcdir/themepacks $pkgdir/opt/bikexperience/
 install -D $startdir/bikeXperience.desktop $pkgdir/usr/share/applications
 install -D $srcdir/linux/bxpIcon.png $pkgdir/usr/share/icons/hicolor/100x100/apps/
}

