# PKGBUILD generated by pacpan
pkgname=perl-spreadsheet-writeexcel
pkgver=2.38
pkgrel=1
pkgdesc="Spreadsheet::WriteExcel is a Perl module which can be used to create native Excel binary files"
arch=(any)
license=(GPL)
url="http://search.cpan.org/dist/Spreadsheet-WriteExcel/"
depends=('perl-parse-recdescent' 'perl-file-temp' 'perl-ole-storage-lite')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/J/JM/JMCNAMARA/Spreadsheet-WriteExcel-$pkgver.tar.gz)
md5sums=('2eb51216ce1ba38e0b9d8fe1e38cf4c9')

build() {
  cd "${srcdir}/Spreadsheet-WriteExcel-${pkgver}"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
