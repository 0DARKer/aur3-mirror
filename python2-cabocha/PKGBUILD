# Maintainer: nosada <nosada271@gmail.com>

pkgname=python2-cabocha
pkgver=0.66
pkgrel=2
pkgdesc="Yet Another Japanese Dependency Structure Analyzer(python2 interface)"
url="https://code.google.com/p/cabocha/"
arch=('x86_64' 'i686')
license=('LGPL' 'BSD')
depends=('crfpp' 'mecab' 'cabocha' 'python2')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("https://cabocha.googlecode.com/files/cabocha-${pkgver}.tar.bz2"
        "NewBSD")                                                          # New BSD License
md5sums=('61e15daba7b6d72ea57e057a25c2c1f5'
         '31647eee70e2788db41caf100da377df')

build() {
  cd "${srcdir}/cabocha-${pkgver}"
  cd python

  python2 setup.py build || return 1
}

package() {
  cd "${srcdir}/cabocha-${pkgver}"
  cd python

  python2 setup.py install --root=${pkgdir} || return 1
  install -Dm644 ${srcdir}/NewBSD "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
