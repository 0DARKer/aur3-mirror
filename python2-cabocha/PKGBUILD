# Maintainer: nosada <ngsksdt@gmail.com>

pkgname=python2-cabocha
_pkgname=cabocha
pkgver=0.68
pkgrel=2
pkgdesc="Yet Another Japanese Dependency Structure Analyzer (python2 interface)"
url="https://code.google.com/p/cabocha/"
arch=('x86_64' 'i686')
license=('LGPL2.1' 'BSD')
depends=('crfpp' 'mecab' 'cabocha' 'python2')
source=("https://cabocha.googlecode.com/files/${_pkgname}-${pkgver}.tar.bz2")
sha1sums=('5e22a71eb86d778fdeb1b725c0b27f1fb4af7f4b')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  cd python

  python2 setup.py build
}

package() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  cd python

  python2 setup.py install --root=${pkgdir}
  install -Dm644 ../COPYING \
            ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

# vim:set ts=2 sw=2 et:
