pkgname=hspell-gui-fixed
libname=hspell-gui
pkgver=0.2.6
pkgrel=4
arch=('i686' 'x86_64')
pkgdesc="Hspell-gui is a graphical front end to hspell , a Hebrew spell checker and linguistic analyzer, using the gnome-2.0 graphics library."
license=('GPL')
depends=('gtk2' 'hspell-latest' 'libgnome')
url="http://hspell-gui.sourceforge.net/"
source=(http://downloads.sourceforge.net/project/$libname/$libname/$libname-$pkgver/$libname-$pkgver.tar.gz)
md5sums=('681be043d21cae57d84970c8704c4ba2')

build() {
cd $srcdir/$libname-$pkgver
./configure --prefix=/usr
make
make DESTDIR=$pkgdir install
}
