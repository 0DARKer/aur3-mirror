# Maintainer: Kirill Duborenko <k.duborenko@gmail.com>

pkgname=robomongo
pkgver=0.6.7
pkgrel=1
pkgdesc="Shell-centric crossplatform opensource MongoDB management tool."
arch=("x86_64")
url="http://www.robomongo.org/"
license=('unknown')
depends=("qt4" "pcre" "qjson" "qscintilla")

md5sums=('1f6eb92da1c0deb950b7023024b5ac08'
         '99b7e2da938f17646e80634388587c6d')

source=("https://github.com/paralect/robomongo/archive/v${pkgver}.tar.gz"
        "build-script.patch")

build() {
    patch -p1 -d robomongo-0.6.7/ < build-script.patch
    ln -s `pwd`/robomongo-0.6.7/libs/unix-amd64-debug `pwd`/robomongo-0.6.7/libs/unix-amd64-release
    cd robomongo-0.6.7/build
    ./build.sh -r
}

package() {
    install -D -m755 $srcdir/robomongo-0.6.7/target/release/app/out/robomongo $pkgdir/usr/bin/robomongo 
}

