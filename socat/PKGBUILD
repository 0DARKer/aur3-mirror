# Maintainer: kang <kang@insecure.ws>

pkgname=socat
pkgver=2.0.0_b4
pkgrel=1
pkgdesc="Relay for bidirectional data transfer via socket, pty, pipe, file and more"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.dest-unreach.org/socat/"
depends=('readline' 'openssl' 'tcp_wrappers')
makedepends=('imake')
source=(http://www.dest-unreach.org/socat/download/$pkgname-${pkgver/_/-}.tar.gz)
md5sums=('55b89e8c3fb1b823e145d5ff90a82de2')

build() {
  cd $srcdir/$pkgname-${pkgver/_/-}
  ./configure --prefix=/usr \
    --mandir=/usr/share/man
  make depend || return 1
  make || return 1
}

package() {
  cd $srcdir/$pkgname-${pkgver/_/-}
  make DESTDIR=$pkgdir install || return 1
}
