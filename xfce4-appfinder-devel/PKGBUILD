# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce4-appfinder-devel
pkgver=4.7.2
pkgrel=1
pkgdesc="Xfce application finder (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('garcon-devel' 'glib2' 'gtk2' 'libxfce4ui-devel' 'xfconf-devel')
makedepends=('pkgconfig' 'intltool' 'xfce4-dev-tools-devel')
options=('!libtool')
install=xfce4-appfinder.install
source=(http://archive.xfce.org/src/xfce/xfce4-appfinder/4.7/xfce4-appfinder-${pkgver}.tar.bz2)
md5sums=('be64fd5555939dce31b3c7a18dc0f4db')

build() {
  cd ${srcdir}/xfce4-appfinder-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static
  make
}

package() {
	cd ${srcdir}/xfce4-appfinder-${pkgver}
	make DESTDIR=${pkgdir} install
}
