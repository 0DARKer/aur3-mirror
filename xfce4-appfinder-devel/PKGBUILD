# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce4-appfinder-devel
pkgver=4.8.0
pkgrel=1
pkgdesc="Xfce application finder (Development Version)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('libxfce4ui-devel' 'garcon-devel' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool')
conflicts=('xfce4-appfinder' 'xfce4-appfinder-git')
options=('!libtool')
install=xfce4-appfinder.install
source=(http://archive.xfce.org/src/xfce/xfce4-appfinder/4.8/xfce4-appfinder-${pkgver}.tar.bz2)
md5sums=('fb4797ef91b90d111b989e98c3e000e0')

build() {
  cd ${srcdir}/xfce4-appfinder-${pkgver}
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var \
	--disable-static \
	--disable-debug
  make
}

package() {
  cd ${srcdir}/xfce4-appfinder-${pkgver}
  make DESTDIR=${pkgdir} install
}
