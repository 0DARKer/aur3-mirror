#Contributor: Arthur Danskin <arthurdanskin@gmail.com>

pkgname=dadadodo
pkgver=1.04
pkgrel=3
pkgdesc="analyses texts for word probabilities, and then generates random sentences based on that"
url="http://www.jwz.org/dadadodo/"
license="MIT"
arch=(i686 x86_64)
depends=(glibc)
makedepends=(gcc perl)
source=(http://www.jwz.org/dadadodo/$pkgname-$pkgver.tar.gz)
md5sums=(d3ff69c4e71c328586b1c6ca2130a4b3)

build() {
  cd $startdir/src/$pkgname-$pkgver
  head -n 9 dadadodo.c | perl -e 'while (<>) {print substr($_, 3)}' > LICENSE
  make || return 1
  install -D -m755 dadadodo $startdir/pkg/usr/bin/dadadodo
  install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/dadadodo/LICENSE
}
