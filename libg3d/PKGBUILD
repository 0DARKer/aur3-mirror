# Contributor: andreas langer <a.langer@q-dsl.de>

pkgname=libg3d
pkgver=0.0.6
pkgrel=1
pkgdesc="glib-based library for loading and manipulating 3D objects"
url="http://freshmeat.net/projects/libg3d/"
license=('LGPL')
arch=('i686' 'x86_64')
depends=('glib2' 'pkgconfig' 'gtk2' 'libxml2')
source=("http://automagically.de/files/$pkgname-$pkgver.tar.gz")
md5sums=('037f02240c8aadc2113c3b0fcd0fe004')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$startdir/pkg install
}

