# Contributer: Emmanuel Gil Peyrot <linkmauve@linkmauve.fr>

pkgname=libgme
pkgver=0.5.5
pkgrel=2
pkgdesc="Video game music file emulation/playback library"
libname=game-music-emu
url="http://${libname}.googlecode.com/"
license="LGPL"
arch=("i686" "x86_64")
depends=()
makedepends=(cmake)
source=(http://${libname}.googlecode.com/files/${libname}-${pkgver}.tbz2)
md5sums=("94459001a763fb76209a550a03b7949e")

build() {
	cd ${srcdir}/${libname}-${pkgver}
	mkdir build
	cd build

	msg "Starting build process."
	cmake .. -DCMAKE_INSTALL_PREFIX=/usr || return 1
	make || return 2
	make DESTDIR=${pkgdir} install
}

