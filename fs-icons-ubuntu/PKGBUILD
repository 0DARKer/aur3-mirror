# Maintainer: Ner0

pkgname=fs-icons-ubuntu
pkgver=0.6_alpha3
pkgrel=1
pkgdesc="An icon theme based on possible new icons for Ubuntu by Yellowicon"
arch=('any')
url="http://franksouza183.deviantart.com/art/FS-Icons-Ubuntu-288407674"
license=('GPL3')
source=("http://205.196.121.147/r1wju9xeyjog/j7w23f4tf35r6j4/fs-icons-ubuntu-0.6-alpha3.zip")
options=('!strip' '!emptydirs')
md5sums=('2e06656749328bdafe8016ff5eac3248')

DLAGENTS=('http::/usr/bin/curl -fLC - --retry 3 --retry-delay 3 -O -e "http://www.mediafire.com/?j7w23f4tf35r6j4" -A "Mozilla/5.0 (X11; Linux x86_64; rv:19.0) Gecko/20121212 Firefox/19.0 Aurora/19.0a2"')

package() {
  install -dm755 "$pkgdir/usr/share/icons"

  tar --no-same-owner -xf "$srcdir/fs-icons-ubuntu.tar.bz2" -C "$pkgdir/usr/share/icons/"

  find "$pkgdir/" -type d -exec chmod 755 "{}" \;
  find "$pkgdir/" -type f -exec chmod 644 "{}" \;
}
