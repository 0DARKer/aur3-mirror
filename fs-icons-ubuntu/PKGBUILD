# Maintainer: Ner0

pkgname=fs-icons-ubuntu
pkgver=0.6_alpha4
pkgrel=1
pkgdesc="An icon theme based on possible new icons for Ubuntu by Yellowicon"
arch=('any')
url="http://franksouza183.deviantart.com/art/FS-Icons-Ubuntu-288407674"
license=('GPL3')
source=("http://199.91.152.62/a0tz9rh4w4eg/245dbpib9ajotvv/fs-icons-ubuntu-0.6-alpha4.zip")
options=('!strip' '!emptydirs')
md5sums=('eaf42ce015bb819c52ce6f7d92cd9b2e')

DLAGENTS=('http::/usr/bin/curl -fLC - --retry 3 --retry-delay 3 -O -e "http://www.mediafire.com/?245dbpib9ajotvv" -A "Mozilla/5.0 (X11; Linux x86_64; rv:19.0) Gecko/20121212 Firefox/19.0 Aurora/19.0a2"')

package() {
  install -dm755 "$pkgdir/usr/share/icons"

  tar --no-same-owner -xf "$srcdir/fs-icons-ubuntu.tar.bz2" -C "$pkgdir/usr/share/icons/"

  find "$pkgdir/" -type d -exec chmod 755 "{}" \;
  find "$pkgdir/" -type f -exec chmod 644 "{}" \;
}
