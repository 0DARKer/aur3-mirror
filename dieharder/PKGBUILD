# Maintainer: nblock <nblock [/at\] archlinux DOT us> 

pkgname=dieharder
pkgver=3.29.4beta
pkgrel=1
pkgdesc="A random number generator (rng) testing suite"
arch=('any')
url="http://www.phy.duke.edu/~rgb/General/dieharder.php"
license=('GPL')
source=(http://www.phy.duke.edu/~rgb/General/dieharder/$pkgname.tgz)
md5sums=('eba447e1918d9ef3d70da11f14149a21')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  make DESTDIR="$pkgdir/" install
}

