# Maintainer: onny <onny@project-insanity.org>
# Contributor: onny <onny@project-insanity.org>

pkgname=kraken-git
_pkgname=kraken
pkgver=368a837
pkgrel=1
pkgdesc="A project to encrypt A5/1 GSM signaling using a Time/Memory Tradeoff Attack."
arch=('i686' 'x86_64')
url="http://opensource.srlabs.de/projects/a51-decrypt"
license="GPL3"
makedepends=('git')
source=("git+git://git.srlabs.de/kraken.git")
sha512sums=("SKIP")

pkgver() {
  cd "${SRCDEST}/${_pkgname}"
  git describe --always | sed 's|-|.|g' | cut -f2 -d"v"
}

build() {
  cd "${srcdir}/${_pkgname}/Kraken"
  ./build.sh
  
} 
package () {
  mkdir -p $pkgdir/usr/bin
  cp -a $srcdir/kraken/Kraken/kraken $pkgdir/usr/bin/kraken
}
