# Contributor: sitquietly <forestmoonsilence@gmail.com>

pkgname=nix
pkgver=1.5.3
pkgrel=1
pkgdesc="A purely functional package manager"
url="http://nixos.org/"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('perl-www-curl' 'perl-dbd-sqlite' 'bzip2' 'gc')
source=(http://hydra.nixos.org/build/5350096/download/4/${pkgname}-${pkgver}.tar.xz)
sha1sums=('59de68bf4f08df11ce2f97676b3a64108843a062')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure --prefix=/usr --libexecdir=/usr/lib/${pkgname} --sysconfdir=/etc -enable-gc
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
