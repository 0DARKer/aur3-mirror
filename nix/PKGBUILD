# Contributor: Exaos Lee <exaos.lee@gmail.com>
# Contributor: sitquietly <forestmoonsilence@gmail.com>

pkgname=nix
pkgver=1.4
pkgrel=1
pkgdesc="A purely functional package manager"
url="http://nixos.org/"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('perl-www-curl' 'perl-dbd-sqlite' 'bzip2' 'gc')
source=(http://hydra.nixos.org/build/4228031/download/5/${pkgname}-${pkgver}.tar.xz)
sha1sums=('806cfcc2e3d7b6aa64f53bcee62c5929ac99b229')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure --prefix=/usr --libexecdir=/usr/lib/${pkgname} --sysconfdir=/etc -enable-gc
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
