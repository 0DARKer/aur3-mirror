# Maintainer: Bartek Piotrowski <barthalion@gmail.com>
# Contributor: Rudolf Olah <omouse@orch.org>

pkgname=nix
pkgver=0.16
pkgrel=1
pkgdesc="Nix is a purely functional package manager."
url="http://nixos.org/"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('db4.5')
makedepends=('gcc>=2.95')
source=(http://hydra.nixos.org/build/565033/download/5/${pkgname}-${pkgver}.tar.gz)
md5sums=('f214607a8ab8d1e37acfe6d5023feec4')

build() {
 cd "${srcdir}/${pkgname}-${pkgver}"
 ./configure --prefix=/usr
 make
}

package() {
 cd "${srcdir}/${pkgname}-${pkgver}"
 make DESTDIR="${pkgdir}" install
}
