# Contributor: sitquietly <forestmoonsilence@gmail.com>

pkgname=nix
pkgver=1.2
pkgrel=1
pkgdesc="A purely functional package manager"
url="http://nixos.org/"
arch=('any')
license=('LGPL')
depends=('perl-www-curl' 'perl-dbd-sqlite' 'bzip2' 'gc')
source=(http://hydra.nixos.org/build/3455295/download/5/${pkgname}-${pkgver}.tar.xz)
sha1sums=('b5f5fb7e9932805fa3546f641330642470390d07')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure --prefix=/usr --libexecdir=/usr/lib/${pkgname} --sysconfdir=/etc -enable-gc
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
