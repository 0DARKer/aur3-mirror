# Maintainer: josephgbr <rafael.f.f1@gmail.com>

_pkgbase=colord
pkgname=lib32-${_pkgbase}
pkgver=0.1.16
pkgrel=1
pkgdesc="Color daemon (32 bit)"
arch=('x86_64')
url="http://www.freedesktop.org/software/colord"
license=('GPL2')
depends=('lib32-glib2' 'lib32-libgusb' "${_pkgbase}") # 'lib32-lcms2' 'sqlite3' 'lib32-polkit' 'lib32-udev' 'lib32-sane'
makedepends=('intltool' 'vala' 'docbook2x' 'lib32-lcms2' 'lib32-sqlite3' 'lib32-polkit' 'lib32-udev' 'lib32-sane') # 'gobject-introspection'
source=(${url}/releases/${_pkgbase}-${pkgver}.tar.xz)
options=('!libtool' '!emptydirs')
sha1sums=('bd2fbad0043d2c1f55ab7ff8cb5e261b684e699c')

build() {
  export CC='gcc -m32'
  export PKG_CONFIG_PATH='/usr/lib32/pkgconfig'
  
  cd "${srcdir}/${_pkgbase}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
    --localstatedir=/var --disable-static \
    --with-systemdsystemunitdir=/lib/systemd/system \
    --libexecdir=/usr/lib32/colord \
    --libdir=/usr/lib32 --enable-introspection=no
    
  make
}

package() {
  cd "${srcdir}/${_pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/{etc,lib,var,usr/{bin,include,share}}
  rm -f "${pkgdir}/usr/lib32/colord/colord" # not a library
}
