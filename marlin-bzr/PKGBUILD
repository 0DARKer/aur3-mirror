# Maintainer: Dan Serban
# Contributors: Flamelab, crazyelf5

pkgname=marlin-bzr
pkgver=404
pkgrel=1
pkgdesc="A file manager by the Elementary project"
arch=(i686 x86_64)
url=https://launchpad.net/marlin
license=(GPLv2)
depends=(cairo glib2 gtk3 libgee libnotify)
makedepends=(bzr gnome-common gobject-introspection gtk-doc intltool vala)
options=('!libtool' '!emptydirs')
install=marlin-bzr.install

# _bzrtrunk=lp:${_realname}
# _bzrmod=${_realname}

build()
{
  bzr co lp:marlin marlin -r 404
  cd marlin
  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --libexecdir=/usr/lib/marlin \
    --enable-dependency-tracking
  make
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install
}

