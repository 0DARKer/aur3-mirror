# Maintainer: Dan Serban
# Contributors: Flamelab, crazyelf5

pkgname=marlin-bzr
pkgver=latest
pkgrel=1
pkgdesc="A file manager by the Elementary project"
arch=(i686 x86_64)
url=https://launchpad.net/marlin
license=(GPLv2)
depends=(cairo dbus-glib glib2 gnome-icon-theme gtk3 libgee libnotify pango sqlite3)
# makedepends=(bzr gnome-common gobject-introspection gtk-doc intltool vala)
makedepends=(bzr vala)
options=('!libtool' '!emptydirs')
install=marlin-bzr.install

# _bzrtrunk=lp:marlin
# _bzrmod=marlin

build()
{
  bzr co lp:marlin marlin
  cd marlin
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install
  cp "${pkgdir}"/usr/share/icons/hicolor/scalable/apps/marlin.svg "${pkgdir}"/usr/share/pixmaps/
}

