pkgname=marlin-bzr
_realname=marlin
pkgver=373
pkgrel=1
pkgdesc="The Elementary project file manager"
arch=('i686' 'x86_64')
url="https://launchpad.net/marlin"
license=('GPL2')
depends=('gtk3' 'libgee' 'glib2-git' 'cairo' 'libnotify-git')
makedepends=('bzr' 'gnome-common' 'gobject-introspection>=0.9.6' 'gtk-doc' \
             'intltool>=0.41.1' 'vala-git' )

options=('!libtool' '!emptydirs')
install=${pkgname}.install

_bzrtrunk=lp:${_realname}
_bzrmod=${_realname}

build() {
  cd ${srcdir}

  msg "Connecting to the server...."

  if [ ! -d ${_bzrmod} ]; then
    bzr co ${_bzrtrunk} ${_bzrmod}
  else
    bzr up ${_bzrmod}
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  rm -rf ${_bzrmod}-build
  cp -r ${_bzrmod} ${_bzrmod}-build
  cd ${_bzrmod}-build

  ./autogen.sh --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --libexecdir=/usr/lib/marlin --enable-dependency-tracking
 make

}

package() {

  cd ${srcdir}/${_bzrmod}-build

  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=${pkgdir} install

}
