# Maintainer: Dan Serban

pkgname=pdfchain-all-inclusive
pkgver=0.123
pkgrel=1
pkgdesc="Combo package: PDF Chain and pdftk"
depends=(gtkmm)
makedepends=(intltool)
provides=(pdftk pdftk-bin pdfchain)
conflicts=(pdftk pdftk-bin pdfchain)
license=GPLv3
url=http://pdfchain.sourceforge.net/
arch=(i686)
source=("http://downloads.sourceforge.net/project/pdfchain/pdfchain-${pkgver}/PDF%20Chain%20version%20${pkgver}/pdfchain-${pkgver}.tar.gz"
        "http://ftp.br.debian.org/debian/pool/main/p/pdftk/pdftk_1.44-2_i386.deb"
        "http://ftp.br.debian.org/debian/pool/main/g/gcj-4.4/libgcj10_4.4.5-2_i386.deb")
md5sums=('88870ffaf28833b85d84b02da60f41a4'
         '2447b7d4e717d8204c1ca5fa04fcb161'
         '2f051547d4597b8d4b806ea6b9cd99e3')

build()
{
  ar -xv "pdftk_1.44-2_i386.deb"
  bsdtar -xvf data.tar.gz -C "$pkgdir"
  rm data.tar.gz
  ar -xv "libgcj10_4.4.5-2_i386.deb"
  bsdtar -xvf data.tar.gz
  mkdir -p "$pkgdir/usr/lib/"
  cd usr/lib
  cp libgcj.so.10 "$pkgdir/usr/lib/"
  cd "$srcdir/pdfchain-${pkgver}"
  ./configure
  make || return 1
  make prefix="$pkgdir/usr" install
}
