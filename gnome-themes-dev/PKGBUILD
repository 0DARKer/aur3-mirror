# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>

_pkg=gnome-themes
pkgname=gnome-themes-dev
pkgver=2.91.5
pkgrel=1
pkgdesc="Default themes for GNOME3"
arch=(any)
license=('LGPL')
depends=('gtk-engines-dev' 'librsvg>=2.32.1')
makedepends=('intltool' 'icon-naming-utils')
url="http://www.gnome.org"
groups=('gnome')
provides=("gnome-themes=${pkgver}")
conflicts=('gnome-themes')
options=(!makeflags)
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-themes/2.91/${_pkg}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd "${_pkg}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
}

package() {
  cd "${_pkg}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
