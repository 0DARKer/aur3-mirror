# Author: Felix Gnass
# Maintainer: fgnass <fgnass@gmail.com>
_npmname=node-dev
pkgname=nodejs-node-dev # All lowercase
pkgver=2.0.0
pkgrel=2
pkgdesc="Restarts your app when files are modified"
arch=(any)
url="http://github.com/fgnass/node-dev"
license=()
depends=('nodejs' )
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(7f78a926681c0fb88376b82f2be493263b1a5072)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
# vim:set ts=2 sw=2 et:
