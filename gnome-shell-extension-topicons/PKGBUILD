#Maintainer: jsh <jsh at myreseau dot org>

pkgname=gnome-shell-extension-topicons
pkgver=5
pkgrel=1
pkgdesc="Shows legacy tray icons on top."
arch=('any')
url="https://extensions.gnome.org/extension/495/topicons/"
license=('GPL')
depends=('gnome-shell')
makedepends=('unzip')
groups=('gnome-shell-extensions')
source=('https://extensions.gnome.org/review/download/2059.shell-extension.zip' 'shell-version.patch')
sha256sums=('16c4e7205c5caa83467f5fac18ac11e1dcb81ee5f257616f83aeda48df8dbdfc' '3197bb76eeae42c2a1b8d6c461e3934d9be3df6d6956dafd7c4a9997761c42bb')
noextract=("2059.shell-extension.zip")

build() {
  cd "$srcdir"
  unzip 2059.shell-extension.zip
  cd "${srcdir}"
  patch -p1 < ../shell-version.patch
}

package() {
  uuid='topIcons@adel.gadllah@gmail.com'
  cd "${srcdir}"

  install -Dm644 "metadata.json" \
    "${pkgdir}/usr/share/gnome-shell/extensions/${uuid}/metadata.json"
  install -m644 "extension.js" \
    "${pkgdir}/usr/share/gnome-shell/extensions/${uuid}/extension.js"

}
