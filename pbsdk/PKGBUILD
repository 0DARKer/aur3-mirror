pkgname=pbsdk
pkgver=1.1.0
pkgrel=1
pkgdesc="Unoficial SDK for PocketBook devices"
arch=('i686' 'x86_64')
url="http://www.the-ebook.org/forum/viewtopic.php?t=17573"
license=('GPL')
depends=('')
options=('!strip')
source=("http://pbsdk.vlasovsoft.net/files/${pkgname}-linux-${pkgver}.deb")
md5sums=('9bdd9f4f1b4e9d132dc363e54b01a419')
build() {
  cd $srcdir/
  bsdtar -xf pbsdk-linux-${pkgver}.deb data.tar.gz
  bsdtar -xf data.tar.gz
  rm data.tar.gz
  mv usr ${pkgdir}
}
