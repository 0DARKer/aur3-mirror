# Contributor: Aliaksandr Stelmachonak <mail.avatar at gmail dot com>

pkgname=pbsdk
pkgver=1.0.5
pkgrel=1
pkgdesc="Unoficial SDK for PocketBook devices"
arch=('i686' 'x86_64')
url="http://www.the-ebook.org/forum/viewtopic.php?t=17573"
license=('GPL')
depends=('')
options=('!strip')
_source_arch="i386"
[ "$CARCH" = "x86_64" ] && _source_arch="amd64"
source=("pbsdk-linux-${pkgver}_${_source_arch}.deb::http://sourceforge.net/projects/pbchess/files/PBSDK/pbsdk-linux-${pkgver}_${_source_arch}.deb")
md5sums=('3239dbe9f8502e26909ee76e19b5fc26')
[ "$CARCH" = "x86_64" ] && md5sums=('e73a47da82601bf3c00d0b535315dffc')
build() {
  cd $srcdir/
  bsdtar -xf pbsdk-linux-${pkgver}_${_source_arch}.deb data.tar.gz
  bsdtar -xf data.tar.gz
  rm data.tar.gz
  mv usr ${pkgdir}
}
