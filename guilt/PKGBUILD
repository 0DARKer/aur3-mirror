# Contributor: Luiz Ribeiro <luizribeiro@gmail.com>
pkgname=guilt
pkgver=0.32
pkgrel=1
pkgdesc="Patch management tool for git, closer to the spirit of Quilt than StGIT."
arch=('any')
url="http://www.kernel.org/pub/linux/kernel/people/jsipek/guilt/"
license=('GPL')
depends=('asciidoc' 'xmlto' 'git' 'bash')
install=
source=(http://www.kernel.org/pub/linux/kernel/people/jsipek/guilt/$pkgname-$pkgver.tar.gz)
md5sums=('bdef70db6d32698d6eddee13a3981945')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" PREFIX="/usr" install || return 1
  make doc || return 1
  make DESTDIR="$pkgdir" PREFIX="/usr" install-doc || return 1
}

# vim:set ts=2 sw=2 et:
