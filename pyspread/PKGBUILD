# Maintainer: Adam "falcon7" Chidlow <falcon7@standardnerd.org>
pkgname=pyspread
pkgver=0.1.2
pkgrel=1
pkgdesc="A cross-platform Python spreadsheet application."
arch=('any')
url="http://pyspread.sourceforge.net/"
license=('GPL3')
depends=('python2' 'python-numpy' 'wxpython')
options=(!emptydirs)
source=("http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
optdepends=('python2-gmpy: arbitrary size rational numbers, and speed ups.'
            'python-rpy: advanced statistics and plotting functions' )
           
md5sums=('67fd6c25d54665b8279cd29b26ea5b0b')
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root=$pkgdir/ --optimize=1

}

