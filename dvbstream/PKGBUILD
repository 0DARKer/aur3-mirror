# Contributor: Gergely Tamas <dice@mfa.kfki.hu>
pkgname=dvbstream
pkgver=0.5
pkgrel=3
pkgdesc="RTP-ize a DVB transport stream."
url="http://sourceforge.net/projects/dvbtools/"
license="GPL"
depends=('glibc')
source=(http://dl.sourceforge.net/sourceforge/dvbtools/$pkgname-$pkgver.tar.gz dumprtp.1 dvbstream.1 rtpfeed.1 ts_filter.1)
md5sums=('34eb1053beb918843bedd903647f93da' '89904079c0893ed2755582ac15135f3e'\
         '39db6f4875fca38676497f7a95f74c97' '93f231c87856e29308adb40ba7936a8e'\
         '797f52c6db4d0ded079cb2bc5f6cfee9')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  mkdir -p $startdir/pkg/usr/{bin,man/man1}
  for i in dumprtp dvbstream rtpfeed ts_filter; do
    install -m 755 $i $startdir/pkg/usr/bin
    install -m 644 $startdir/src/${i}.1 $startdir/pkg/usr/man/man1
  done
}
