pkgname=cairo-dock-plug-ins-extras
pkgver=3.1.2
pkgrel=1
pkgdesc="Extra plugins for cairo-dock"
arch=(any)
url=https://launchpad.net/$pkgname
license=(GPL3 LGPL3)
depends=(cairo-dock)
source=($url/${pkgver:0:3}/$pkgver/+download/${pkgname}_${pkgver}_python2.tar.gz)
sha256sums=('b52d984594acf7be8b025cf2386d87efc7f9fcd96474f9f22566114ba1c6a575')
sha512sums=('c9dab6824702ed44876d3f4c8c30885a4eaa2ab259b342735ed026841edf25a07fdc6523618a5b0c5a58880939e5cabc922c2c971a763a7ced2da27e0bda94e0')

package() {
    cd "$srcdir"
    # As of Jan 19, 2013:
    # installing to /usr/share doesn't work can't find a workaround, only way is to install to $HOME
    #cd_prefix="$(pkg-config cairo-dock --variable=prefix)"
    #mkdir -p "${pkgdir}/${cd_prefix}/share/cairo-dock"
    #cp -r "${pkgname}_${pkgver}" "${pkgdir}${cd_prefix}/share/cairo-dock/third-party"

    install -d "$pkgdir/$HOME/.config/cairo-dock"
    cp -r ${pkgname}_$pkgver/ "$pkgdir/$HOME/.config/cairo-dock/third-party/"
}
