
pkgname=lib32-libsexy
pkgname32=${pkgname/lib32-/}
pkgver=0.1.11
pkgrel=3
_pkgrel32=2
pkgdesc="Doing naughty things to good widgets."
arch=('x86_64')
depends=('gtk2' 'libxml2')
makedepends=()
url="http://chipx86.com/wiki/Libsexy"
groups=lib32
license=('GPL')
source=(ftp://mirrors.kernel.org/archlinux/extra/os/i686/libsexy-0.1.11-2-i686.pkg.tar.gz)
md5sums=('ee7eeb38e0f9a10c336cee5ef45c2a23')

build() {
  mkdir -p $startdir/pkg/opt/lib32/lib/
  mkdir -p $startdir/pkg/opt/lib32/usr/lib/
  cp -R $startdir/src/lib/*.so* $startdir/pkg/opt/lib32/lib/
  cp -R $startdir/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib/
}
