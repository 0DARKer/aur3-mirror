# Contributor: Laurent Carlier <lordheavym@gmail.com>

pkgname=telepathy-qt-git
pkgver=20130302
pkgrel=1
pkgdesc="A library for Qt-based Telepathy clients"
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org"
license=('LGPL')
depends=('qt4' 'telepathy-farstream')
makedepends=('libxslt' 'python2' 'cmake' 'git' 'doxygen')
conflicts=('telepathy-qt' 'telepathy-qt4-git')
provides=('telepathy-qt' 'telepathy-qt4-git')
options=('!libtool')

_gitroot="git://git.collabora.co.uk/git/freedesktop.org-mirror/telepathy/telepathy-qt.git"
_gitname="telepathy-qt"

build() {
  cd ${srcdir}

  msg "Connecting to the GIT server...."
  
  if [[ -d ${srcdir}/$_gitname ]] ; then
    cd $_gitname
    git checkout -- .
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  
  msg "GIT checkout done"
  msg "Patching..."
  cd ${srcdir}/${_gitname}

  msg "Starting configure..."

  . /etc/profile.d/qt4.sh
  rm -rf ${srcdir}/build && mkdir ${srcdir}/build
  cd ${srcdir}/build

  cmake ../$_gitname \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DPYTHON_EXECUTABLE=/usr/bin/python2 \
      -DQT_QMAKE_EXECUTABLE=/usr/bin/qmake-qt4 \
      -DQT_MOC_EXECUTABLE=/usr/bin/moc-qt4 \
      -DQT_RCC_EXECUTABLE=/usr/bin/rcc-qt4 \
      -DQT_UIC_EXECUTABLE=/usr/bin/uic-qt4 \
      -DCMAKE_POSITION_INDEPENDENT_CODE=on \
      -DENABLE_TESTS=false
  
  msg "Starting make..."
  make
}

package() {
  cd ${srcdir}/build

  make DESTDIR="$pkgdir" install
}
