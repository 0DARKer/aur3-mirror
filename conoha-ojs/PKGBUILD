# Maintainer: nosada <ngsksdt@gmail.com>

pkgname=conoha-ojs
pkgver=20150217.1
pkgrel=1
pkgdesc="CLI-tool for ConoHa Object Storage"
arch=("x86_64")
url="https://github.com/hironobu-s/conoha-ojs"
_gourl="github.com/hironobu-s/conoha-ojs"
license=("MIT")
depends=("go")
makedepends=("mercurial")

build() {
  GOPATH=${srcdir} go get ${_gourl}
  cd ${srcdir}/src/${_gourl}
  GOPATH=${srcdir} go build
}

package() {
  mkdir -p ${pkgdir}/usr/bin
  install -p -m755 ${srcdir}/bin/${pkgname} ${pkgdir}/usr/bin/${_cmdname}
}

# vim:set ts=2 sw=2 et:
