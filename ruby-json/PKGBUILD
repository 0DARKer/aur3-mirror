# Contributor: Daenyth <Daenyth+Arch AT gmail DOT com>
pkgname=ruby-json
pkgver=1.4.6
pkgrel=1
pkgdesc="A ruby implementation of the JSON specification according to RFC 4627"
arch=(any)
url="http://json.rubyforge.org/"
license=('GPL')
depends=(ruby)
makedepends=(rubygems)
source=(http://rubyforge.org/frs/download.php/56578/json-$pkgver.gem)
noextract=(json-$pkgver.gem)
md5sums=('d41d8cd98f00b204e9800998ecf8427e')

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install -i "$pkgdir$_gemdir" json-$pkgver.gem
}


