# Contributor: Daenyth <Daenyth+Arch AT gmail DOT com>

pkgname=ruby-json
pkgver=1.6.1
pkgrel=1
pkgdesc="This is a JSON implementation as a Ruby extension in C."
arch=(any)
url="http://json.rubyforge.org/"
license=('GPL')
depends=(ruby)
makedepends=(rubygems)
source=(http://rubygems.org/downloads/json-$pkgver.gem)
noextract=(json-$pkgver.gem)
md5sums=('1dddafdc136e77ee96834c7a0eed38f3')

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install -i "$pkgdir$_gemdir" json-$pkgver.gem
}

