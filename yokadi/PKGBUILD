#Contributor: teo <teo at kde.org>
#Maintainer: Roel Blaauwgeers <roel at ttys0.nl>


pkgname=yokadi
pkgver=0.13.0
pkgrel=2
pkgdesc="Not your grandma TODO list."
url="http://yokadi.github.com"
arch=('i686' 'x86_64')
depends=('python2' 'python-sqlobject' 'python2-dateutil')
makedepends=()

source=(http://yokadi.github.com/download/yokadi-$pkgver.tar.bz2)
license=('GPL')
md5sums=('84da9eb35465e792b011bdb95e2d5095')

build() {
	cd $startdir/src/yokadi-$pkgver
	mkdir -p $startdir/pkg/opt/yokadi
	mkdir -p $startdir/pkg/usr/bin
	cp -R * $startdir/pkg/opt/yokadi

    cat > $startdir/pkg/usr/bin/yokadi << EOF
#!/bin/bash
cd /opt/yokadi/
python2 ./yokadi \$@
cd \$OLDPWD
EOF
            chmod 755 $startdir/pkg/usr/bin/yokadi

}

