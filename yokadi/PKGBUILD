# Mantainer: Michal Docekal <docekal@gmail.com>

pkgname=yokadi
pkgver=0.12.0
pkgrel=1
pkgdesc="Not your grandma TODO list."
url="http://yokadi.github.com"
arch=('i686' 'x86_64')
depends=("python" "python-sqlobject" "python-dateutil")
source=(http://yokadi.github.com/download/yokadi-$pkgver.tar.bz2)
license=('GPL')
md5sums=('561aed5d842b8210c5b760718e16556f')

build() {
	cd $startdir/src/yokadi-$pkgver
	mkdir -p $startdir/pkg/opt/yokadi
	mkdir -p $startdir/pkg/usr/bin
	cp -R * $startdir/pkg/opt/yokadi
	ln -sf /opt/yokadi/yokadi $startdir/pkg/usr/bin/yokadi
}
