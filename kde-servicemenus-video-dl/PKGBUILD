pkgname=kde-servicemenus-video-dl
pkgver=0.1.0
pkgrel=1
pkgdesc="Servicemenu for KDE to download videos and extract its audio"
arch=('any')
url="http://kde-apps.org/content/show.php/kde-service-menu-video-dl+?content=157943"
license=('GPL')
depends=("kdebase-workspace>=4.10.1" "mawk" "kde-servicemenus-youtube" "ffmpeg")
source=("http://kde-peace-settings.googlecode.com/files/kde-service-menu-video-dl_${pkgver}.tar.gz")
sha512sums=('878790b1467565d2e84558a2bb427a18b194b7a6b0159af94fa7c68df8ed50582cc30ea382cb9bd1ed34091f1103dab2fd98f4e9dc8313c11e3aa8a226177cb1')

package(){
    
     cd ${srcdir}/kde-service-menu-video-dl
     mv ./usr ${pkgdir}
}
