# Contributor: T-T

pkgname='t-t_torpia'
pkgver='0.3'
pkgrel=0
pkgdesc="T-T | Torpia"
arch=('i686' 'x86_64')
url="http://sourceforge.net/p/tttorpia/home/Home/"
license=('GPL')
depends=(bash wget)
makedepends=()
conflicts=()
optdepends=()
_md5_tar='091366c85256a188be659de984514a14'

source=("https://downloads.sourceforge.net/project/tttorpia/$pkgver/torpia.tar.xz")
md5sums=(${_md5_tar})

build() {
	cd ${srcdir}/
	
	mkdir ${pkgdir}/usr
	mkdir ${pkgdir}/usr/share
	mkdir ${pkgdir}/usr/share/torpia
	mkdir ${pkgdir}/usr/etc
	mkdir ${pkgdir}/usr/bin
	
	mv ${srcdir}/start ${pkgdir}/usr/bin/torpia
	mv ${srcdir}/torpia ${pkgdir}/usr/share/torpia/
	mv ${srcdir}/torpia.conf ${pkgdir}/usr/etc/
	mv ${srcdir}/torpia.do ${pkgdir}/usr/share/torpia/
	mv ${srcdir}/torpia.produce ${pkgdir}/usr/share/torpia/
	mv ${srcdir}/torpia.upgrade ${pkgdir}/usr/share/torpia/
}
