# Contributor: T-T

pkgname='t-t_torpia'
pkgver='0.4'
pkgrel=0
pkgdesc="Automatize Torpia gaming"
arch=('i686' 'x86_64')
url="http://sourceforge.net/p/tttorpia/home/Home/"
license=('GPL')
depends=(bash wget)
makedepends=()
conflicts=()
optdepends=()

source=("https://downloads.sourceforge.net/project/tttorpia/$pkgver/torpia.tar.xz")
md5sums=(f0b7dde94f7ebb623fe42b26bae06ff3)

build() {
	cd ${srcdir}/
	
	mkdir ${pkgdir}/usr
	mkdir ${pkgdir}/usr/share
	mkdir ${pkgdir}/usr/share/torpia
	mkdir ${pkgdir}/etc
	mkdir ${pkgdir}/usr/bin
	
	mv ${srcdir}/start ${pkgdir}/usr/bin/torpia
	mv ${srcdir}/torpia ${pkgdir}/usr/share/torpia/
	mv ${srcdir}/torpia.conf ${pkgdir}/etc/
	for soubor in ${srcdir}/*; do
		[[ "$soubor" =~ (\.tar\.xz|install) ]] || mv "$soubor" ${pkgdir}/usr/share/torpia/
	done
}
