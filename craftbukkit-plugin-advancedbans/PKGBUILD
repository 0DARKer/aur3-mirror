pkgname=craftbukkit-plugin-advancedbans
pkgver=0.3
pkgrel=1
pkgdesc="Advanced ban plugin for Bukkit"
arch=(any)
url="http://forums.bukkit.org/threads/gen-sec-advanced-bans-v0-3-temporary-bans-766.16938/"
license=('GPL')
depends=('craftbukkit')
source=('http://dl.dropbox.com/u/28916240/advancedbans_v0.3.jar')
md5sums=('c0360d3c4f86e7d64674249a215c058f')

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins" 
  install -m 644 "$srcdir/advancedbans_v0.3.jar" "$pkgdir/opt/craftbukkit/plugins"
}

