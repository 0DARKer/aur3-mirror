# Maintainer: Yves G. <theYinYeti@yeti.selfip.net>

pkgname=ysflight
pkgver=20110209
pkgrel=1
pkgdesc="A portable multiplayer flight simulator"
arch=('x86_64')
url="http://ysflight.in.coocan.jp/software/e.html"
license=('freeware')
depends=(imake lib32-gcc-libs lib32-glibc lib32-libdrm lib32-libdrm
         lib32-libgl lib32-libglapi lib32-libx11 lib32-libxau lib32-libxcb
         lib32-libxdamage lib32-libxdmcp lib32-libxext lib32-libxfixes
         lib32-libxxf86vm lib32-mesa)
source=('http://ysflight.in.coocan.jp/download/YsflightForLinux.zip'
        'ysflight.desktop'
        'ysflight.png'
        'ysflight.sh')
md5sums=('ce88e3c72af8c989c3f85789405e2668'
         '4c75db00187a2bdda1f1c662b692a53a'
         'a544483da4de1585434c0c134eb60be0'
         '0eed03b1efd58570df1653ef235569ed')
ysflight_dir='/usr/share/ysflight'

build() {
  cd "${srcdir}/"
  sed -i "s#YSFLIGHT_DIR#${ysflight_dir}#g" ysflight.sh
}

package() {
  cd "${pkgdir}/"

  mkdir -p "$(dirname "${ysflight_dir#/}")"
  cp -a "${srcdir}/Ysflight" "${ysflight_dir#/}"

  install -Dm755 "${srcdir}/ysflight.sh" usr/bin/ysflight
  install -Dm644 "${srcdir}/ysflight.png" usr/share/pixmaps/ysflight.png
  install -Dm755 "${srcdir}/ysflight.desktop" usr/share/applications/ysflight.desktop
}
