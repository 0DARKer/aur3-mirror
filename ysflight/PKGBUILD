# Maintainer: Yves G. <theYinYeti@yeti.selfip.net>

pkgname=ysflight
pkgver=20120701
pkgrel=1
pkgdesc="A portable flight simulator - Not tested on i686"
arch=('i686' 'x86_64')
url="http://wwwe.ysflight.com/"
license=('freeware')
depends=(imake alsa-lib dbus-core flac gcc-libs-multilib glibc json-c
	libasyncns libdrm libgl libglapi libogg libpulse libsndfile
	libvorbis libx11 libxau libxcb libxdamage libxdmcp libxext
	libxfixes libxxf86vm mesa)
source=("http://ysflight.in.coocan.jp/release/${pkgver}/YsflightForLinux$(uname -m | grep -o '64$' || printf 32).zip"
        'ysflight.desktop'
        'ysflight.png'
        'ysflight.sh')
md5sums=("$(uname -m | grep -q '64$' && printf 'd7ba5e36f22be950bfb75c936e5bf887' || printf '348bb3e5a514f09781699a12a7380bba')"
         'c15aaebf72c0c775260c9050bbb3e1ad'
         'a544483da4de1585434c0c134eb60be0'
         'dc0cb83ccfa242791e821f1164cf3f40')
ysflight_dir='/usr/share/ysflight'

build() {
  cd "${srcdir}/"
  sed -i "s#YSFLIGHT_DIR#${ysflight_dir}#g" ysflight.sh
}

package() {
  cd "${pkgdir}/"

  mkdir -p "$(dirname "${ysflight_dir#/}")"
  cp -a "${srcdir}/Ysflight" "${ysflight_dir#/}"

  install -Dm755 "${srcdir}/ysflight.sh" usr/bin/ysflight
  install -Dm644 "${srcdir}/ysflight.png" usr/share/pixmaps/ysflight.png
  install -Dm755 "${srcdir}/ysflight.desktop" usr/share/applications/ysflight.desktop
}
