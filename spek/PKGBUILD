# Maintainer: speps <speps at aur dot archlinux dot org>

pkgname=spek
pkgver=0.8.3
pkgrel=1
pkgdesc="Analyse your audio files by showing their spectrogram."
arch=('i686' 'x86_64')
url="http://www.spek-project.org/"
license=('GPL3')
depends=('wxgtk' 'ffmpeg' 'hicolor-icon-theme' 'desktop-file-utils')
makedepends=('intltool')
install="$pkgname.install"
source=("https://github.com/alexkay/$pkgname/archive/$pkgver.tar.gz")
md5sums=('f0d79a50f76e8f793d994425986a1993')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
