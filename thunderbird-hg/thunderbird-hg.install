_update() {
    echo "Updating desktop database.."
    update-desktop-database -q
    echo "Updating icon cache.."
    gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

post_install() {
    _update
    echo ""
    echo "NOTE: the binary is called 'thunderbird-hg'"
    echo ""
}

post_upgrade() {
    _update
}

post_remove() {
    post_upgrade
}