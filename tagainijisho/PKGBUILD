pkgname=tagainijisho
pkgver=0.2.6.2
pkgrel=1
pkgdesc="A Free Japanese dictionary and study assistant"
arch=('i686' 'x86_64')
url="http://www.tagaini.net/"
license=('GPL3')
depends=('qt>=4.5')
makedepends=('cmake>=2.8.1')
source=(http://launchpad.net/tagaini-jisho/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('1cfe0300a3ff872c169ed9de48f46682')

build() {
  cd "$srcdir/$pkgname-$pkgver"

# Change the value of DICT_LANG on the next line to en, fr, es, de, or ru to generate
# the databases in one of these languages

  CFLAGS=`echo $CFLAGS | sed 's/-ffast-math//'` cmake -DDICT_LANG=en -DCMAKE_INSTALL_PREFIX=/usr . || return 1
  
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  install -D -m644 $srcdir/$pkgname-$pkgver/$pkgname.desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop
  install -D -m644 $srcdir/$pkgname-$pkgver/images/$pkgname.png \
    $pkgdir/usr/share/pixmaps/$pkgname.png
}

# vim:set ts=2 sw=2 et:
