# Maintainer: Anton Leontiev <bunder@t-25.ru>
pkgname=makeplus
pkgver=0.2.3
pkgrel=1
pkgdesc="A set of scripts which enhance GNU make"
arch=('i686' 'x86_64')
url="http://www.annexia.org/freeware/makeplus"
license=('GPL')
depends=('sh' 'make')
makedepends=('sed' 'xmlto' 'docbook-xsl')
source=(http://www.annexia.org/_file/$pkgname-$pkgver.tar.gz)
md5sums=('84255f16e4435190a446406a85304ebd')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  export MAKEPLUS_HOME="$srcdir/$pkgname-$pkgver"
  PATH=$PATH:$MAKEPLUS_HOME

  sed -i -e "s/xmlto/xmlto --skip-validation/" Makefile+
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  ./make+

  unset MAKEPLUS_HOME
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  MAKEPLUS_HOME="$srcdir/$pkgname-$pkgver" ./make+ DESTDIR="$pkgdir/" install
}
