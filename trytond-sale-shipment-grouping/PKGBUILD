# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-sale-shipment-grouping
_pkgname=trytond_sale_shipment_grouping
pkgver=3.2.1
_pkgdir=3.2
pkgrel=1
pkgdesc="The sale_shipment_grouping module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-party>=3.2' 'trytond-stock>=3.2' 'trytond-sale>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("9e755b26f67cf4b4033f26a7a85a8b76")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}