post_upgrade() {
  post_install $1
}

post_install() {
  echo "This JRE package contains licensed software."
  echo "You MUST read and agree to the license stored in /opt/bin32-jre/LICENSE before using it"
  echo ""
  echo "The Mozilla plugin can be found in /opt/bin32-jre/lib/i386/libnpjp2.so"
  echo "You can enable it by creating a symlink,"
  echo "ln -s /opt/bin32-jre/lib/i386/libnpjp2.so /usr/lib/mozilla/plugins/libnpjp2.so"
  echo ""
  echo "To use this JVM you will need to set up JAVA_HOME in /etc/profile.d/jre.sh,"
  echo "your .bash_profile or in your scripts to point to /opt/bin32-jre directory."
  echo "Also, /opt/bin32-jre/bin needs to be included in your PATH."
}

op=$1
shift

$op $*

