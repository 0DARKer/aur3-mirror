# Contributor: Ner0

pkgname=transmageddon-git
pkgver=1.0.705.da9fcea
pkgrel=1
pkgdesc="A video transcoder based on GStreamer"
arch=('any')
url="http://www.linuxrising.org"
license=('LGPL')
depends=('gstreamer0.10-good-plugins' 'gstreamer0.10-bad-plugins' 'gstreamer0.10-ugly-plugins' 'gstreamer0.10-base-plugins' 'gstreamer0.10-python' 'hicolor-icon-theme' 'python3')
makedepends=('git' 'intltool')
provides=('transmageddon')
conflicts=('transmageddon')
install=transmageddon.install
source=('git://git.gnome.org/transmageddon')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/transmageddon"
  echo $(git describe --always | sed 's/v//').$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir/transmageddon"

  ./autogen.sh --prefix=/usr
  make
  make DESTDIR="$pkgdir/" install
} 
