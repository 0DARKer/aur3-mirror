pkgname=plowshare
pkgver=snapshot_git20110914
pkgrel=2
pkgdesc="Command-line downloader and uploader for Rapidshare, Megaupload, Mediafire and other file sharing websites."
arch=('any')
url="http://code.google.com/p/plowshare/"
license=('GPL')
depends=('curl' 'imagemagick' 'recode' 'js' 'tesseract')
optdepends=('libcaca: ascii display for no X server'
            'tiv: ascii display for no X server'
            'aview: ascii display for no X server'
            'perlmagick: badongo and netload.in modules')
conflicts=("$pkgname-git")
source=("http://$pkgname.googlecode.com/files/$pkgname-${pkgver/_/-}.tar.gz")
md5sums=('98cb332afb098126f51462af383791da')

build() {
  return 0
  # Nothing to do here
}

package() {
  cd "$srcdir/$pkgname-${pkgver/_/-}"

  DESTDIR="$pkgdir/" PREFIX=/usr ./setup.sh install
}

