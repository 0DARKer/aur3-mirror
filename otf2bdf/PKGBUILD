# Packager: cs-cam - me.at.camdaniel.com
pkgname=otf2bdf
pkgver=3.0
pkgrel=1
pkgdesc="font util"
url="http://crl.nmsu.edu/~mleisher/ttf2bdf.html"
source=(http://crl.nmsu.edu/~mleisher/$pkgname-$pkgver.tar.bz2)

build ()
{
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  sed -e "s|#include <freetype|#include <ft2build.h>\n#include <freetype|g" -i otf2bdf.c
  make || return 1
  make prefix=$startdir/pkg/usr install
}
md5sums=('35ac411011c3240c588e814cdfb782f1')
