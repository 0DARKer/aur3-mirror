pkgname=gupnp-igd
pkgver=0.1.7
pkgrel=2
pkgdesc="A library to handle UPnP IGD port mapping"
arch=('i686' 'x86_64')
url="http://www.gupnp.org"
license=('LGPL')
depends=('gupnp>=0.13.2' 'glib2>=2.14' 'pygobject>=2.0')
makedepends=('gettext' 'pkgconfig')
options=('!libtool')
source=("http://www.gupnp.org/sites/all/files/sources/${pkgname}-${pkgver}.tar.gz")

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr \
              --disable-dependency-tracking \
              --disable-gtk-doc \
              --disable-python
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
md5sums=('75aaca3361046ac42125f81d07c072ac')
