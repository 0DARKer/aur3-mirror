# Maintainer: M0Rf30

pkgname=ndpi-svn
pkgver=5890
pkgrel=1
pkgdesc="Open and Extensible GPLv3 Deep Packet Inspection Library"
arch=('i686' 'x86_64')
url="http://www.ntop.org/products/ndpi/"
license=('GPL3')
depends=()
source=('libndpi.pc.in')
makedepends=('subversion')


_svntrunk="https://svn.ntop.org/svn/ntop/trunk/nDPI"
_svnmod="nDPI"

build() {
  cd "$srcdir"

  msg "Connecting to SVN server...."

  if [[ -d "$_svnmod/.svn" ]]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_svnmod-build"
  svn export "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"
  cp ../libndpi.pc.in .
  ./configure --prefix=/usr
  make
}
         
package() {
  cd "$srcdir/$_svnmod-build"

  make DESTDIR="$pkgdir" install
  mv $pkgdir/usr/include/libndpi*/libndpi $pkgdir/usr/include/a
  rm -r $pkgdir/usr/include/libndpi*/
  mv $pkgdir/usr/include/a $pkgdir/usr/include/libndpi

  cp src/include/*.h $pkgdir/usr/include/libndpi
  rm -r "$srcdir/$_svnmod-build"
}
md5sums=('125abdd36f7657d25318d30440302bb4')
