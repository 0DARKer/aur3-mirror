# Contributor: xbj9000 <xbj9000@comcast.net>
pkgname=prpltwtr
pkgver=0.5.2
pkgrel=1
pkgdesc="A libpurple (Pidgin, Finch, Empathy* etc) plugin which treats microblogging (Twitter, identi.ca, status.net, etc) as IM protocols."
arch=(i686 x86_64)
url="http://code.google.com/p/prpltwtr/"
license=('GPL')
depends=('libpurple')
makedepends=('pkgconfig')
install=$pkgname.install
source=(http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('551376dcb06e619acefbc707fe5c81e2')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make || return 1
  #make -j1 DESTDIR="$pkgdir" install
  install -Dm644 $pkgname.so $pkgdir/usr/lib/purple-2/$pkgname.so
  for dir in 16 22 48; do
    install -Dm644 data/prpltwtr$dir.png $pkgdir/usr/share/pixmaps/protocols/$dir/prpltwtr.png 
  done
  install -Dm644 data/im-twitter.png $pkgdir/usr/share/icons/hicolor/48x48/apps/im-twitter.png
  install -Dm644 data/twitter.profile $pkgdir/usr/share/osso-rtcom/twitter.profile
}

# vim:set ts=2 sw=2 et:
