# Maintainer: PyrO_70 <brieuc.roblin at gmail dot com>
pkgname=ucpufreq-git
pkgver=20100810
pkgrel=5
pkgdesc="Daemon providing userland access to Cpufreq using DBus."
arch=('i686' 'x86_64')
url="http://www.pyrotools.org/"
license=('GPL')
depends=('qt' 'cpufrequtils')
makedepends=('git')

_gitroot="git://gitorious.org/ucpufreq/ucpufreq.git"
_gitname="ucpufreq"

build() {
  cd "$srcdir"

  msg2 "Connecting to gitorious ..."

  if [ -d $_gitname ] ; then
    ( cd $_gitname && git pull )
  else
    git clone $_gitroot $_gitname || return 1
  fi

  msg2 "Starting make..."
  
  cd "$_gitname"

  qmake || return 1
  make || return 1

  #installing binary
  install -D -m755 UCpufreq "$pkgdir"/usr/bin/ucpufreq
  
  #installing daemon script
  install -D -m755 conf/ucpufreq "$pkgdir"/etc/rc.d/ucpufreq
  
  #installing dbus config
  install -D -m644 conf/org.pyrotools.UCpufreq.conf "$pkgdir"/etc/dbus-1/system.d/org.pyrotools.UCpufreq.conf
 
  #installing dbus service
  install -D -m644 conf/org.pyrotools.UCpufreq.service "$pkgdir"/usr/share/dbus-1/system-services/org.pyrotools.UCpufreq.service

} 
