# Maintainer: jsteel <mail at jsteel dot org>
# Contributor: Muhammed Uluyol <muhammedu@gmail.com>

pkgname=scratch
pkgver=1.4.0.1
pkgrel=5
pkgdesc="Create and share your own interactive stories, games, music and art"
arch=('any')
url="http://scratch.mit.edu"
license=('Proprietary')
install=$pkgname.install
depends=('pango' 'v4l-utils' 'pulseaudio-alsa' 'shared-mime-info' 'hicolor-icon-theme' 'desktop-file-utils')
if [ "$CARCH" = "x86_64" ]; then
  depends+=('lib32-libpulse' 'lib32-cairo' 'lib32-pango')
fi
source=(https://launchpad.net/~$pkgname/+archive/ppa/+files/${pkgname}_$pkgver-0ubuntu5_i386.deb)
md5sums=('92cb1ed27175cbd4ce37f0ecaf4fd15e')

package() {
  cd "$srcdir"

  tar -xf data.tar.gz

  cp -rp usr "$pkgdir"/

  install -Dm644 usr/share/doc/$pkgname/copyright "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
