# PKGBUILD by Muhammed Uluyol <muhammedu@gmail.com>
pkgname=scratch
pkgver=1.4.0.1
pkgrel=1
_debext=-0ubuntu5_i386
pkgdesc="Scratch is a new programming language that makes it easy to create your own interactive stories, animations, games, music, and art -- and share your creations on the web."
arch=('i686' 'x86_64')
url="http://scratch.mit.edu/"
license=('Proprietary')
install=('scratch.install')
depends=('pango' 'cairo' 'libv4l')
makedepends=()
source=(http://ppa.launchpad.net/scratch/ppa/ubuntu/pool/main/s/scratch/scratch_${pkgver}${_debext}.deb)
md5sums=('92cb1ed27175cbd4ce37f0ecaf4fd15e')

build() {
    cd $srcdir
    ar x scratch_${pkgver}${_debext}.deb
    bsdtar xzf data.tar.gz
    sed -i 's/-vm-sound-pulse/-vm-sound-ALSA/' usr/bin/scratch
    cp -Rp usr/ $pkgdir
}

