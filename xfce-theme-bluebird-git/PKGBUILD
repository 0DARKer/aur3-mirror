# Maintainer: Diego <cdprincipe at gmail dot com>

pkgname=xfce-theme-bluebird-git
pkgver=0.7.1
pkgrel=1
pkgdesc="A light blue Xfce theme, introduced in the release of Xubuntu 10.10"
arch=('any')
url="https://github.com/shimmerproject/Bluebird"
license=('GPL2' 'CCPL')
depends=('gtk-engine-murrine')
makedepends=('git')
provides=('xfce-theme-bluebird')
conflicts=('xfce-theme-bluebird')
source=('git://github.com/shimmerproject/Bluebird.git')
md5sums=('SKIP')

pkgver() {
  cd Bluebird
  git describe --always | sed 's#-#_#g;s#v##'
}

package() {
  cd Bluebird

  # create theme dirs
  install -d -m 755 "$pkgdir"/usr/share/themes/Bluebird{,-compact/xfwm4}

  # clean up
  rm -rf {.git,.gitignore,LICENSE.{CC,GPL},README}

  # install theme
  cp -r . "$pkgdir"/usr/share/themes/Bluebird/
}
