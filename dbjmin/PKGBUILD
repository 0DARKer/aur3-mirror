# Contributor: Robson Roberto Souza Peixoto <robsonpeixoto@gmail.com>
pkgname=dbjmin
pkgver=0.2
pkgrel=1
pkgdesc="Graphical Client for databases"
arch=('i686' 'x86_64')
url="http://dcon.com.br/dbjmin/"
license=('GPL')
depends=('jre')
source=(http://downloads.sourceforge.net/sourceforge/db2-jmin/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('f74113aca6ac47456b8ca41a66624786')
build() {
  cd "$srcdir/$pkgname-$pkgver"

  # Clean backup files
  find . -name '*~' -exec rm {} \;
  find . -name '*.bat' -exec rm {} \;
  find . -name '*.exe' -exec rm {} \;

  install -d -m755 "$pkgdir/usr/lib/dbjmin"

  install -D -m755  "install-linux/dbjmin" \
    "$pkgdir/usr/bin/dbjmin"

  find . -name '*.jar' -exec chmod 644 {} \;
  find . -name '*.jar' -exec cp {} "$pkgdir/usr/lib/dbjmin" \;
  

}

# vim:set ts=2 sw=2 et:
