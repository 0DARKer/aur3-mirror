# Maintainer: Rolinh <robinDOThahlingATgw-computingDOTnet>
pkgname=dfc
pkgver=1.1.0
pkgrel=1
pkgdesc="Display file system usage in an elegant manner"
arch=('x86_64' 'i686')
url="http://projects.gw-computing.net/projects/dfc"
license=('BSD')
source=(http://projects.gw-computing.net/attachments/download/15/${pkgname}-${pkgver}.tar.gz)
md5sums=('3b09373fefc20080eec24ab759729040')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX="/usr" DESTDIR="${pkgdir}" MANDIR="/usr/share/man" install

  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
