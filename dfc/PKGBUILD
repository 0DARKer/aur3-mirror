# Maintainer: Rolinh <robinDOThahlingATgw-computingDOTnet>
pkgname=dfc
pkgver=2.0.0
pkgrel=1
pkgdesc="Display file system usage in an elegant manner"
arch=('x86_64' 'i686')
url="http://projects.gw-computing.net/projects/dfc"
license=('BSD')
source=(http://projects.gw-computing.net/attachments/download/21/${pkgname}-${pkgver}.tar.gz)
md5sums=('77e9b5ccb3a6f0274c082d3cfd070acf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX="/usr" DESTDIR="${pkgdir}" MANDIR="/usr/share/man" install

  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
