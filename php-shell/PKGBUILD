pkgname=php-shell
pkgver=0.3.1
pkgrel=1
pkgdesc="Advanced interactive command line shell for PHP (with fatal error handling)"
url="http://jan.kneschke.de/projects/php-shell/"
depends=('php')
source=(http://jan.kneschke.de/assets/2007/2/17/PHP_Shell-0.3.1.tgz php-shell php-shell-cmd.patch)
md5sums=('0e5487d675dd7451138c599265a02af7' '3e769e7f996009421ac034926cb7a46d'\
         '69574ab2ed84005961c39228fb7cf655')
arch=('x86_64' 'i686')
license=('GPL')

build() {
  cd $startdir/src/PHP_Shell-$pkgver
  patch -Np0 -i $startdir/src/php-shell-cmd.patch

  mkdir -p $startdir/pkg/usr/share/php-shell
  cp -r PHP $startdir/pkg/usr/share/php-shell/
  cp scripts/php-shell-cmd.php $startdir/pkg/usr/share/php-shell/
  install -D -m 755 $startdir/src/php-shell $startdir/pkg/usr/bin/php-shell
}
