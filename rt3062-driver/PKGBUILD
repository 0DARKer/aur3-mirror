#Maintainer Chais <chais.z3r0[at]gmail[dot]com>

pkgname=rt3062-driver
pkgver=2.4.1.1_20101217
pkgrel=1
pkgdesc="Driver for the Ralink RT3062 chipset"
arch=('any')
url="http://www.ralinktech.com"
license=('GPL2 or any later version')
makedepends=('linux-headers')
install='rt3062-driver.install'
source=('DPO_RT3562_3592_3062_LinuxSTA_V2.4.1.1_20101217.tgz'
	'Makefile.patch'
	'Makefile.6.patch'
	'config.mk.patch')
md5sums=('a5e9af70abccdb7b86d1ef605bb34491'
	 '939ab26106053dbf622e565cb7f7558c'
	 'e9ba6384f44f6a9c3c8c6e96d7aab35c'
	 '660893f7dc96d07f78cf0891094ac0a1')

build(){
	patch ${srcdir}/DPO_RT3562_3592_3062_LinuxSTA_V${pkgver}/os/linux/config.mk < config.mk.patch
	patch ${srcdir}/DPO_RT3562_3592_3062_LinuxSTA_V${pkgver}/Makefile < Makefile.patch
	patch ${srcdir}/DPO_RT3562_3592_3062_LinuxSTA_V${pkgver}/os/linux/Makefile.6 < Makefile.6.patch
	cd ${srcdir}/DPO_RT3562_3592_3062_LinuxSTA_V${pkgver}/
	make DESTDIR="${pkgdir}"
	mkdir ${pkgdir}/etc
	make DESTDIR="${pkgdir}" install
}
