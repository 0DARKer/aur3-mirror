# Contributor: Vinzenz Vietzke <vinz@archlinux.us>

pkgname=swiftweasel-prescott
pkgver=2.0.0.15
pkgrel=1
_pkgname=swiftweasel
_pkgdate=07-01-08
_pkgproc=prescott

pkgdesc="Core Duo (32bit) Celeron D (64bit)optimized  build of the Mozilla Firefox web browser for GNU/Linux."
arch=('i686')
url="http://swiftweasel.tuxfamily.org/"
license=('MPL')
depends=(mozilla-common desktop-file-utils)
conflicts=('swiftweasel-athlon-xp' 'swiftweasel-nocona-64' 'swiftweasel-pentium-4' \
'swiftweasel-athlon64' 'swiftweasel-pentium-4m' 'swiftweasel-pentium-m' \
'swiftweasel-pentium-3-fr' 'swiftweasel-athlon-xp-fr')
provide=('firefox' 'mozilla-firefox' 'iceweasel' 'iceweasel-bin' 'swiftweasel' 'swiftfox')
source=(http://puzzle.dl.sourceforge.net/sourceforge/swiftweasel/$_pkgname-${pkgver}_${_pkgdate}_${_pkgproc}.tar.gz
swiftweasel.desktop)

md5sums=('29250e8dd473712826741156d1f2de38'
         '00673ac7a233ff56c3dd377aca427b4b')

build() {
install -m755 -d $startdir/pkg/{opt,usr/bin}
  cp -r $startdir/src/swiftweasel $startdir/pkg/opt
  ln -s /opt/swiftweasel/swiftweasel /$startdir/pkg/usr/bin/swiftweasel
  
  install -m644 -D $startdir/src/swiftweasel.desktop  $startdir/pkg/usr/share/applications/swiftweasel.desktop
  install -m644 -D $startdir/src/swiftweasel/icons/mozicon128.png $startdir/pkg/usr/share/pixmaps/swiftweasel.png                   
}
