# Maintainer: Patrice Peterson <runiq at archlinux dot us>
# Contributor: Wieland Hoffmann <the_mineo@web.de>

pkgname=python-requests
pkgver=0.10.1
pkgrel=1
pkgdesc="Python HTTP for Humans, Python 3 version."
url="http://python-requests.org"
depends=('python' 'python-chardet' 'python-certifi')
makedepends=('python-distribute')
license=('custom: ISC')
arch=('any')
source=("http://pypi.python.org/packages/source/r/requests/requests-$pkgver.tar.gz"
        "${pkgname}-python3-fix.diff")
md5sums=('699147d2143bff95238befa58980b912'
         'eb506e7c9b7cd0738a13b7816f1feeea')

package() {
    cd "$srcdir/requests-${pkgver}"
    patch -p1 < ../${pkgname}-python3-fix.diff
    python setup.py install --optimize=1 --root=${pkgdir}/
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

