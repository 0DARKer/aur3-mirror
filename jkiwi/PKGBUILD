# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=jkiwi
pkgver=0.9.5
pkgrel=3
pkgdesc="Complete virtual makeover and hairstyler application that can create a new hairstyle, eye shadows, lips color, blush, eye lenses from a simple photo."
arch=('i686' 'x86_64')
url="http://www.jkiwi.com/" 
license="GPL3"
depends=('java-runtime' 'yelp')
#makedepends=('jdk')
if [ "$CARCH" = "x86_64" ]; then
source=(http://downloads.sourceforge.net/$pkgname/jKiwi-0.9.5_linux-x86_64.tar.bz2 jkiwi.desktop)
md5sums=('643e6c3f2b1e9d772ab94350c4c4074b' '8d62a159340e6989cd954f086e46e569')
 else
source=(http://downloads.sourceforge.net/$pkgname/jKiwi-0.9.5_linux.tar.bz2 jkiwi.desktop)
md5sums=('8c47660c85a18068e614e0f26521cdbf' '8d62a159340e6989cd954f086e46e569')
fi

build() { 
	cd ${srcdir}/jKiwi-$pkgver/src
#        javac -classpath ../lib/in_use/metadata-extractor.jar:../lib/in_use/swt.jar @classes || return 1
#       jar -cfm ../bin/jkiwi.jar MANIFEST.MF * || return 1
        cd ..       
        mkdir -p ${pkgdir}/usr/share/{jkiwi,applications}
        mkdir -p ${pkgdir}/usr/bin
        cp -R bin help lib locale resources AUTHORS COPYING NEWS README ${pkgdir}/usr/share/jkiwi
        install -m755 jKiwi ${pkgdir}/usr/share/jkiwi
        echo "cd '/usr/share/jkiwi/' && ./jKiwi" > ${pkgdir}/usr/bin/jkiwi.sh
        chmod 755 ${pkgdir}/usr/bin/jkiwi.sh
        install ${srcdir}/jkiwi.desktop ${pkgdir}/usr/share/applications
}
