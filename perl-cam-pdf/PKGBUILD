pkgname=perl-cam-pdf
_perlmod=CAM-PDF
pkgver=1.58
pkgrel=1
pkgdesc="Perl PDF manipulation library"
arch=('any')
depends=('perl' 'perl-text-pdf')
url="http://search.cpan.org/~cdolan/${_perlmod}-${pkgver}/"
license=('GPL' 'PerlArtistic')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/C/CD/CDOLAN/${_perlmod}-${pkgver}.tar.gz)
md5sums=('776bf0b7d1c9861dc1e5832caf558e2a')
build() {
  cd ${_perlmod}-${pkgver} 
   perl Makefile.PL INSTALLDIRS=vendor 
  make 
  }
check()
{
  cd ${_perlmod}-${pkgver} 
  make test
  }
package() {
  cd ${_perlmod}-${pkgver}
  make install DESTDIR="$pkgdir/"
}

