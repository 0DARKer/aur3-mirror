# Contributor: Christoph Zeiler <rabyte*gmail>

pkgname=alephone-marathon
pkgver=1.2
pkgrel=1
pkgdesc="Marathon 1 scenario data files"
arch=('any')
url="http://trilogyrelease.bungie.org/"
license=('custom')
depends=('alephone')
conflicts=('alephone-m1a1')
replaces=('alephone-m1a1')
source=(http://trilogyrelease.bungie.org/files/M1A1.zip \
	$pkgname.sh \
	LICENSE)
md5sums=('ae731351489da61353c783e8e3763a35'
         'd99b3c33e451d850e2404725aee55a11'
         'f555a7637ee8c6de9d7a68fd5245401d')

build() {
  find M1A1 -type f -exec chmod 644 {} \;

  mkdir -p "$pkgdir"/usr/share/alephone/scenarios
  cp -rf M1A1/ "$pkgdir"/usr/share/alephone/scenarios/marathon/

  install -Dm755 $pkgname.sh "$pkgdir"/usr/bin/$pkgname
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
