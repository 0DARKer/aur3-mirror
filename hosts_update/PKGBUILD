# Contributor: graysky <graysky AT archlinux dot us>
pkgname=hosts_update
pkgver=1.1
pkgrel=1
pkgdesc='Updates /etc/hosts with the mvps blocklist to prevent thousands of parasites, hijackers and unwanted adware/spyware/privacy websites from working.'
arch=('any')
license=('GPL')
install=('readme.install')
backup=('etc/hosts' 'etc/hosts.local')
source=($pkgname hosts.local)
url=https://bbs.archlinux.org/viewtopic.php?id=106367

package() {
  install -D -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -D -m644 hosts.local ${pkgdir}/etc/hosts.local
}
sha256sums=('4ed1f9c7d886b13fe70e1c65e16a74bf66affd80efcaddcb45053c7778d9e3d4'
            'b45d87fbfbdf5e4cecaa8afc807e760fc5fdf7ed2423338ea98f6c7730881d89')
