# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-epdlab-svn
pkgver=24658
pkgrel=1
pkgdesc="Open-source interactive Python environment from Enthought Python \
         Distribution."
arch=('any')
url="http://code.enthought.com/"
license=('BSD')
depends=('python2' 'python-numpy>=1.1' 'ipython>=0.9' 'python2-distribute'
         'python-ets-apptools-svn' 'python-ets-traits-svn'
         'python-ets-traitsgui-svn' 'python-ets-traits-wx-svn'
         'python-ets-enthoughtbase-svn' 'python-ets-envisagecore-svn'
         'python-ets-envisageplugins-svn')
makedepends=('subversion')
options=(!emptydirs)

_svnmod=EPDLab
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

