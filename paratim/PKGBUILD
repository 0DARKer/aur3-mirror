# Contributor: Dominika Solarz <dominikasolarz@gmail.com>

pkgname=paratim
pkgver=0.2.0
pkgrel=1
pkgdesc="A remake of the old DOS game Paratrooper"
arch=('i686' 'x86_64')
url="http://paratim.sourceforge.net/"
license=('GPL')
depends=('gcc-libs' 'sdl')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2
        $pkgname.patch)
md5sums=('da18ba7f22efd6b67cecb2ebe106ce66'
         '36e47fa46bef3ee6afbb55643a9462cd')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  patch -Np0 -i ../$pkgname.patch || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
