# Contributor: Urs Wolfer <uwolfer @ fwo.ch>

pkgname=ttf-droid-sans
_pkgname=ttf-droid
pkgver=2.1
pkgrel=1
_vers=20121017
pkgdesc="DroidSans is a beautiful font designed by Steve Matteson for the Open Handset Alliance platform, Android."
arch=('any')
license=('Apache')
url="http://www.droidfonts.com/droidfonts"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
conflicts=("$_pkgname")
install=$_pkgname.install
source=("ftp://ftp.archlinux.org/other/community/ttf-droid/ttf-droid-$_vers.tar.xz"
'sans-mono-fontconfig.conf')
#'sans-fontconfig.conf')
sha256sums=('f068efec9e8201fe0d1be75b1a4751c98d14dc44267b2237f549403b2a8069e3'
            '42da7d1ac6d7055971c8b1bb98a83e893fbed621534b04247a5f6ed89ca14d44')

package() {
	_fonts=('DroidSans-Bold' 'DroidSansMono' 'DroidSans')
	
	# Install fonts
	cd "$srcdir/google-droid-fonts-$_vers"
	install -d "$pkgdir/usr/share/fonts/TTF/" 
	for font in ${_fonts[@]}; do install -m644 "$font".ttf  "$pkgdir/usr/share/fonts/TTF/$font.ttf"; done

	# Install fontconfig
	cd $srcdir
	install -d "$pkgdir/etc/fonts/conf.avail/"
#	install -m644 sans-fontconfig.conf "$pkgdir/etc/fonts/conf.avail/65-$_pkgname-sans-fontconfig.conf"
	install -m644 sans-mono-fontconfig.conf "$pkgdir/etc/fonts/conf.avail/60-$_pkgname-sans-mono-fontconfig.conf"
}
