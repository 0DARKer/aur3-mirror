# Maintainer: Alessio Sergi <asergi at archlinux dot us>

pkgname=python2-mmkeys
pkgver=1.6.2.1
pkgrel=1
pkgdesc="Multimedia key support as a PyGTK object"
arch=('i686' 'x86_64')
url="http://sonata.berlios.de/"
license=('GPL2')
depends=('pygtk' 'python2')
source=(http://download.berlios.de/sonata/sonata-$pkgver.tar.bz2)
sha1sums=('609452c1672ae01c44988a21f7cc94f0637bad82')

prepare() {
  cd "sonata-$pkgver/mmkeys"
  sed -i 's|/usr/include/python2.4|/usr/include/python2.7|' Makefile
}

build() {
  cd "sonata-$pkgver/mmkeys"
  make mmkeys.so
}

package() {
  cd "sonata-$pkgver/mmkeys"
  install -d -m 755 "$pkgdir"/usr/lib/python2.7/site-packages
  install -m 644 mmkeys.so "$pkgdir"/usr/lib/python2.7/site-packages/mmkeys.so
}

# vim:set ts=2 sw=2 et:
