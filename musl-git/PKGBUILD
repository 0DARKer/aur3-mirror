# Maintainer: Serge Ziryukin <ftrvxmtrx@gmail.com>

pkgname=musl-git
pkgver=20111103
pkgrel=1
pkgdesc="An implementation of the C/POSIX standard library intended for use on Linux-based systems"
arch=('i686' 'x86_64')
url="http://www.etalabs.net/musl/"
license=('LGPL')
makedepends=('make' 'git')
conflicts=('musl')
provides=('musl')

_gitroot="git://git.etalabs.net/musl"
_gitname="musl"

build() {
  cd "$srcdir"

  msg "Connecting to Git server..."

  if [ -d "$srcdir/$_gitname" ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "Git checkout done or server timeout."
  msg "Starting make..."

  # copy sources
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # configure
  cp dist/config.mak .

  if [ "$CARCH" = "x86_64" ]; then
    sed 's/^ARCH.*/ARCH = x86_64/' -i config.mak
  fi

  sed 's,/usr/local,/usr,g' -i config.mak

  make || return 1
}

package() {
  cd "$srcdir/$_gitname-build"

  mkdir -p "$pkgdir/lib"
  make DESTDIR="$pkgdir/" install
}
