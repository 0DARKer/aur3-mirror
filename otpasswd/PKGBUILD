pkgname=otpasswd
pkgver=0.7_rc1
pkgrel=1
pkgdesc="A Pluggable Authentication Module (PAM) implementing GSC's Perfect Paper Passwords"
arch=('i686' 'x86_64')
url="http://otpasswd.thera.be/"
license=('GPL3')
depends=('pam' 'gettext')
makedepends=('cmake')
source=("http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.bz2")
sha256sums=('59f7bcdc763f65265acf5b57e415458cfa2d70fe73caa4675314793ce89b7b17')

build(){
  cd "$srcdir/$pkgname-$pkgver/"
  cmake . && make
}

package(){
  cd "$srcdir/$pkgname-$pkgver/"
  make DESTDIR="$pkgdir/" install
}
