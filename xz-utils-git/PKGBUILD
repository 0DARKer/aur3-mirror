# Contributor: François Charette <firmicus ατ gmx δοτ net>

pkgname=xz-utils-git
pkgver=20090511
pkgrel=2
pkgdesc="Newer version of lzma-utils"
arch=('i686' 'x86_64')
url="http://tukaani.org/xz/"
license=('GPL')
depends=('bash')
conflicts=('xz-utils')
provides=('xz-utils')
# eventually this will conflict, provide and replace lzma-utils,
# but since the formats are incompatible, we provide it as an extra
makedepends=('gcc' 'util-linux-ng' 'git' 'cvs')
options=('!libtool' 'zipman')

_gitroot="git://ctrl.tukaani.org/xz.git"
_gitname="xz"
build() {
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # This is in order to prevent conflicts with lzma-utils:
#  sed -i 's/lz/xz/g' $srcdir/${_gitname}-build/src/scripts/Makefile.am || return 1
#  sed -i 's/lzma/xz/g' $srcdir/${_gitname}-build/src/scripts/lz* || return 1
#  rename lz xz $srcdir/${_gitname}-build/src/scripts/lz* || return 1

  ./autogen.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
  # This is in order to prevent conflicts with lzma-utils:
  rm -f $pkgdir/usr/bin/lz*
  rm -f $pkgdir/usr/share/man/man1/lz*
  rm -f $pkgdir/usr/bin/unlzma
}

