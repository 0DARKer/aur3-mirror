# Maintainer: David Osborne <krendilboove _at_ gmail _dot_ com>
pkgname=ibus-kmfl
pkgver=1.0.3
pkgrel=1
pkgdesc="KMFL engine for IBUS"
arch=('i686' 'x86_64')
url="http://kmfl.sourceforge.net/"
license=('GPL')
depends=('libkmfl' 'ibus')
source=("http://downloads.sourceforge.net/kmfl/$pkgname-$pkgver.tar.gz")
md5sums=('d98ed94d49ed2019008f7b4dc4a20e6c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --libexecdir=/usr/lib/$pkgname
  make DESTDIR="$pkgdir" install
}
