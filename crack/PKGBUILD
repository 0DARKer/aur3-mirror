# Maintainer: Arno Rehn <arno@arnorehn.de>
pkgname=crack
pkgver=0.3
pkgrel=1
pkgdesc="A LLVM based scripting language"
arch=(i686 x86_64)
url="http://code.google.com/p/crack-language/"
license=('LGPL')
groups=()
depends=('llvm>=2.8')
makedepends=('cmake>=2.6' 'mesa' 'pcre' 'gtk2' 'sdl')
optdepends=('mesa: OpenGL bindings' 'pcre: bindings' 'gkt2: bindings' 'sdl: bindings')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://crack-language.googlecode.com/files/$pkgname-$pkgver.tar.gz)
noextract=()
sha1sums=('262703117ccaedcff4a73ef67d859316dcaf7bc0')

export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

build() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/build"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
