# Maintainer: Arno Rehn <arno@arnorehn.de>
pkgname=crack
pkgver=0.4
pkgrel=1
pkgdesc="A LLVM based scripting language"
arch=(i686 x86_64)
url="http://code.google.com/p/crack-language/"
license=('LGPL')
groups=()
depends=('llvm>=2.9' 'libcwd')
makedepends=('mesa' 'pcre' 'gtk2' 'sdl')
optdepends=('mesa: OpenGL bindings' 'pcre: bindings' 'gkt2: bindings' 'sdl: bindings')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://crack-language.googlecode.com/files/$pkgname-$pkgver.tar.gz)
noextract=()
sha1sums=('e163f53e16220a950ff22336e1664a123d3be80e')

export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
