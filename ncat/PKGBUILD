# Contributor: post <postwannabe@gmail.com>
pkgname='ncat'
pkgver='0.10rc3'
pkgrel='2'
pkgdesc='The culmination of many key features from various Netcat incarnations'
arch=('i686' 'x86_64')
license=('GPL')
url='http://nmap-ncat.sourceforge.net/'
makedepends=('make' 'gcc')
depends=('openssl')
source=("http://heanet.dl.sourceforge.net/sourceforge/nmap-ncat/$pkgname-$pkgver.tar.gz")
md5sums=('5febca55c280c98ffb17977030a9b919')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure
  make || return 1
  mkdir -p $startdir/pkg/usr/{bin,man/man1}
  install ncat $startdir/pkg/usr/bin
  install docs/man/ncat.1 $startdir/pkg/usr/man/man1
}
