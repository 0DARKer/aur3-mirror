# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

pkgname=lua-busted
pkgver=1.6
pkgrel=1
pkgdesc="Elegant Lua unit testing"
arch=(any)
url="http://olivinelabs.com/busted/"
license=('MIT')
groups=()
depends=(
  "lua"
  "lua-cliargs"
  "lua-filesystem"
  "lua-dkjson"
  "lua-say"
  "lua-luassert"
  "lua-ansicolors"
  "lua-penlight"
)
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://github.com/Olivine-Labs/busted/archive/v$pkgver.tar.gz)
noextract=()
md5sums=('594d3b3d0b9486c83908eb6bd4114e06')

package() {
  cd "$srcdir/busted-$pkgver"
  mkdir -p "$pkgdir/usr/lib/lua/5.2/busted"
  cp -r "$srcdir/busted-$pkgver/src/"*  "$pkgdir/usr/lib/lua/5.2/busted"
}

