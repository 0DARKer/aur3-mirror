# Maintainer Alex Ghoust <ghoust@skyper.homelinux.org>

pkgname=instead-steelrat
pkgver=0.5
pkgrel=1
pkgdesc="Quest for instead. Become a steel rat."
arch=('any')
url="http://instead-games.googlecode.com/"
license=('custom')
depends=('instead')
source=(http://instead-games.googlecode.com/files/$pkgname-$pkgver.zip)
md5sums=('2d7503f02710510d99d2dfff6544f801')

build() {
  cd "${srcdir}"
  mkdir -p $pkgdir/usr/share/instead/games/steelrat/{gfx,mus}
  install -m644 steelrat/gfx/* $pkgdir/usr/share/instead/games/steelrat/gfx || return 1 
  install -m644 steelrat/mus/* $pkgdir/usr/share/instead/games/steelrat/mus || return 1
  install -m644 steelrat/{main.lua,theme.ini} $pkgdir/usr/share/instead/games/steelrat/ || return 1
}

