pkgname=vimb
pkgver=2.4
pkgrel=2
pkgdesc="Vimb is a WebKit-based web browser"
arch=('i686' 'x86_64')
url="http://fanglingsu.github.io/vimb"
license=('GPL3')
depends=('webkitgtk2')
conflicts=('vimb-git')
source=("$pkgname-$pkgver.tar.gz::https://codeload.github.com/fanglingsu/$pkgname/tar.gz/$pkgver")
sha256sums=('a8bab3ed97523316daa70e9f8f3e26e8f8827691e4993912a19f78d2f4a2f198')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" PREFIX="/usr" install
}

