pkgname=starpu
pkgver=0.9.1
pkgrel=1
pkgdesc="StarPU Runtime System"
arch=('i686' 'x86_64')
url="http://runtime.bordeaux.inria.fr/StarPU/"
license=('GPL')
makedepends=('make' 'gcc' 'hwloc')
source=(https://gforge.inria.fr/frs/download.php/28545/$pkgname-$pkgver.tar.gz)
md5sums=('675a22afdc68250bca2d8600cd73ee1b')

build() {
   cd "$pkgname-$pkgver"

   ./configure --prefix=/usr
   make
   make DESTDIR=$pkgdir install
}
