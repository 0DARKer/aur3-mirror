pkgname=starpu
pkgver=0.9.2
pkgrel=1
pkgdesc="StarPU Runtime System"
arch=('i686' 'x86_64')
url="http://runtime.bordeaux.inria.fr/StarPU/"
license=('GPL')
makedepends=('make' 'gcc' 'hwloc')
source=(https://gforge.inria.fr/frs/download.php/29209/$pkgname-$pkgver.tar.gz)
md5sums=('51f9c5c19523e61e3e035bad3099b173')

build() {
   cd "$pkgname-$pkgver"

   ./configure --prefix=/usr
   make
   make DESTDIR=$pkgdir install
}
