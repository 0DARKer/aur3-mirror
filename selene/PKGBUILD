# Maintainer: Levente Polyak <levente[at]leventepolyak[dot]net>

pkgname=selene
_pkgname=Selene
pkgver=0.3.1
pkgrel=1
pkgdesc="Simple C++11 friendly header-only bindings to Lua"
url="https://github.com/jeremyong/Selene"
arch=('any')
license=('zlib')
depends=('lua')
checkdepends=('cmake' 'gcc')
source=(https://github.com/jeremyong/${_pkgname}/archive/v${pkgver}.tar.gz)
sha256sums=('bb831df160045567a3004aee9e5daeed252d8f2548cb69d902f3c8ef8545cd50')

check() {
  cd ${_pkgname}-${pkgver}
  mkdir build
  cd build
  cmake ..
  make
  ./test
}

package() {
  cd ${_pkgname}-${pkgver}

  install -d "${pkgdir}/usr/share"
  cp -r include "${pkgdir}/usr/share"

  install -Dm 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm 644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
}

# vim: ts=2 sw=2 et:
