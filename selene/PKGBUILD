# Maintainer: Levente Polyak <levente[at]leventepolyak[dot]net>

pkgname=selene
_pkgname=Selene
pkgver=0.4
pkgrel=1
pkgdesc="Simple C++11 friendly header-only bindings to Lua"
url="https://github.com/jeremyong/Selene"
arch=('any')
license=('zlib')
depends=('lua')
checkdepends=('cmake')
source=(https://github.com/jeremyong/${_pkgname}/archive/v${pkgver}.tar.gz)
sha256sums=('e448981a3247541c497a7d0ca90e6a1b61f58ede5fcb4e7fc1c1ec25ed3f5a57')

check() {
  cd ${_pkgname}-${pkgver}
  mkdir build
  cd build
  cmake ..
  make
  ./test
}

package() {
  cd ${_pkgname}-${pkgver}

  install -d "${pkgdir}/usr/share"
  cp -r include "${pkgdir}/usr/share"

  install -Dm 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm 644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
}

# vim: ts=2 sw=2 et:
