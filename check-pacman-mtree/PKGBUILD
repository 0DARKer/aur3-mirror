pkgname=check-pacman-mtree
pkgver=0.5
pkgrel=1
pkgdesc='pacman db mtree check size/md5/sha256'
license=('GPL2')
arch=('any')
url="http://00ff.net/luajit"
depends=( 'luajit' 'openssl' 'zlib' )
source=("${pkgname}-${pkgver}.luajit")
sha1sums=('aead6ffdcc6b6f3a6d44f871a2f6740050518bc0')

package() {
  install -D -m755 "${srcdir}/${pkgname}-${pkgver}.luajit" "${pkgdir}/usr/bin/${pkgname}.luajit"
}

