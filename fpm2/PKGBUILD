# Maintainer: TDY <tdy@gmx.com>

pkgname=fpm2
pkgver=0.78
pkgrel=1
pkgdesc="Figaro's Password Manager 2"
arch=('i686' 'x86_64')
url="http://als.regnet.cz/fpm2/"
license=('GPL')
depends=('gtk2')
makedepends=('pkgconfig>=0.9.0')
source=(http://als.regnet.cz/$pkgname/download/$pkgname-$pkgver.tar.bz2)
md5sums=('52823df8b19f2cf60b956c5d9fd4d60c')
sha256sums=('e7a022e32638f5ad6a989230269c169b37769f82db421abb8dfe9f12edca072b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
#  sed -i 's#/home/koval/fpm2#/usr#' $pkgname.desktop
  ./autogen.sh --prefix=/usr
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
