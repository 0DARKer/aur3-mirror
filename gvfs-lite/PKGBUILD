# Contributor: Graham Rogers <grogers3.14@googlemail.com>

pkgname=gvfs-lite
pkgver=1.6.5
pkgrel=1
pkgdesc="GVFS with as few dependencies as possible"
arch=('i686' 'x86_64')
url="http://gnome.org"
license=('GPL')
makedepends=("intltool>=0.35.0")
optdepends=("gnome-disk-utility: for mounting drives"
            "libarchive: Archive support"
            "libcdio: CDDA support"
            "fuse: FUSE support"
            "gvfs-smb: SMB/CIFS (Windows client) support"
            "gvfs-gphoto2: gphoto2 (PTP camera/MTP media player)"
            "gvfs-obexftp: ObexFTP (bluetooth) support")
provides=('gvfs')
conflicts=('gvfs' 'gvfs-rar' 'gvfs-smbfix')
source=("ftp://ftp.gnome.org/pub/gnome/sources/gvfs/1.6/gvfs-${pkgver}.tar.bz2")
md5sums=('9e2b942415ebd9f30623e38e97cf28fa')

build() {
    cd "${srcdir}/gvfs-${pkgver}"
    ./configure --prefix="/usr" --sysconfdir="/etc" --libexecdir="/usr/lib/gvfs"
}

package(){
	cd "${srcdir}/gvfs-${pkgver}"
	make DESTDIR="${pkgdir}" install || return 1
}
