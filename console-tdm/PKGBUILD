# Maintainer: Iru Dog <mytbk920423@gmail.com>

pkgname=console-tdm
pkgdesc="A good extension for xinit, similar to CDM."
url=https://code.google.com/p/t-display-manager/
arch=('any')
pkgver=0.2.6
pkgrel=2
license=('GPL')
depends=('xorg-xinit')
source=("http://t-display-manager.googlecode.com/files/tdm-${pkgver}.tar.xz"
		"tdm-0.2.6-2.patch")
install=tdm.install

build() {
	cd $srcdir/tdm
	patch -Np1 -i ../tdm-0.2.6-2.patch
}

package(){
	cd $srcdir/tdm
	make PREFIX=/usr DESTDIR=${pkgdir} install
}

md5sums=(
"6b41f1915f6d836595bb54b12d99b680"
"422316fdb66953161058cdaa60d24786"
)
