# Maintainer: Iru Dog <mytbk920423@gmail.com>

pkgname=console-tdm
pkgdesc="A good extension for xinit, similar to CDM."
url=https://code.google.com/p/t-display-manager/
arch=('any')
pkgver=0.3.1
pkgrel=1
license=('GPL')
depends=('xorg-xinit')
optdepends=('dialog: for curses UI')
source=("http://t-display-manager.googlecode.com/files/tdm-${pkgver}.tar.xz")
install=tdm.install

build() {
	true
}

package(){
	cd $srcdir/tdm
	make PREFIX=/usr DESTDIR=${pkgdir} install
}

md5sums=(
'dc6a7cde17a1392e77c4a407e0fe74e8'
)

