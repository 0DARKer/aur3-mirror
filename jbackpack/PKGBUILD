# Contributor: Kevin Peters <65bones at gmail dot com>

pkgname=jbackpack
pkgver=0.9.1
pkgrel=1
pkgdesc="A graphical frontend to rdiff"
arch=('i686')
url="http://www.nongnu.org/jbackpack/index.html"
license=('GPL')
depends=('jre' 'rdiff-backup' 'expect' 'encfs' 'sshfs')
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.jar
	$pkgname.desktop
	$pkgname.svg)

md5sums=('e5e7353faafa585d3b5d1bb265e91166'
         '593d492a37bf11469ca9994587788f50'
         '05ed36e59ca5fab4d95d61d02b4e86e0')

build() {
	cd $srcdir
	mkdir -p $pkgdir/usr/{bin,share/$pkgname}
	mv $pkgname-$pkgver.jar $pkgdir/usr/share/$pkgname/$pkgname.jar
	echo -e "#!/bin/bash\n\ncd /usr/share/$pkgname/\n/opt/java/jre/bin/java -jar $pkgname.jar" >$pkgdir/usr/bin/$pkgname
	chmod 755 $pkgdir/usr/bin/$pkgname
        install -D -m644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
	install -D -m644 $srcdir/$pkgname.svg $pkgdir/usr/share/icons/hicolor/scalable/apps/$pkgname.svg

}




