# Maintainer: STEELBAS

pkgname=anycoloryoulike-icon-theme
pkgver=0.9.3
pkgrel=1
pkgdesc="An icon theme by pobtott, featuring a GUI interface to edit the icons' colors. Run the script as root to make sure you have the permission to edit the image files."
arch=('any')
url="http://fav.me/d2wk91q"
license=('GPL')
conflicts=()
depends=(python2)
source=(http://fc02.deviantart.net/fs70/f/2011/015/6/4/any_color_you_like_by_pobtott-d2wk91q.zip)
md5sums=('55470be296ec77a088a671a5df461030')

build() {
	bsdtar -x -f any_color_you_like_by_pobtott-d2wk91q.zip
	mkdir -p "${pkgdir}"/usr/share/icons
	tar xf "${srcdir}"/ACYL_Icon_Theme_0.9.3.tar.bz2 -C "${pkgdir}"/usr/share/icons
#		Make GUI program use python2 instead of python2.6:
	sed '1s/python2.6/python2/' "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/scalable/scripts/script_gui.py > "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/scalable/scripts/script_gui.py_tmp
	mv "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/scalable/scripts/script_gui.py_tmp "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/scalable/scripts/script_gui.py
#		Make the GUI program starting script refer to /usr/share/icons instead of ~/.icons:	
	sed 's:~/.icons:/usr/share/icons:' "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/AnyColorYouLike > "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/AnyColorYouLike_tmp
	mv "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/AnyColorYouLike_tmp "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3/AnyColorYouLike
#		Fix permissions settings:	
	chmod -R 755 "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3
	chown -R root:root "${pkgdir}"/usr/share/icons/ACYL_Icon_Theme_0.9.3
}
