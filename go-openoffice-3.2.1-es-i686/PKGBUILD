#Colaborated: DarkMind, MarianoC, jotapesan, ddelpino


pkgname=go-openoffice-3.2.1-es-i686
pkgver=3.2.1
_lang=es
_GOver=3.2.1
pkgrel=1
pkgdesc="Go-OpenOffice.org Spanish language files (lenguaje espaÃ±ol)"
arch=('i686')
license=('LGPL')
url="http://go-oo.org/discover/"
makedepends=('rpmextract')
depends=('go-openoffice>=3.2.1')
replaces=('go-oo-bin-es')
source=(http://ftp-1.gwdg.de/pub/openoffice/localized/$_lang/$_GOver/OOo_"$_GOver"_Linux_x86_langpack-rpm_"$_lang".tar.gz)
md5sums=('29bd2e27abdf1d61a84c10757746fa5b')

build() {
	cd ${srcdir}/OOO320_m18_native_packed-1_$_lang.9502/RPMS
	for i in *.rpm
		do rpmextract.sh $i
	done

# install openoffice language files
	mkdir -p ${pkgdir}/usr/lib/go-openoffice/basis-link
	cp -R opt/openoffice.org/basis3.2/* ${pkgdir}/usr/lib/go-openoffice/basis-link
	cp -R opt/openoffice.org3/* ${pkgdir}/usr/lib/go-openoffice/basis-link
	chown root:root -R ${pkgdir}/usr/lib/go-openoffice
} 
