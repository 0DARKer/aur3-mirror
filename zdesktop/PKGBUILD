pkgname=zdesktop
pkgver=7_1_1_ga_b10917
pkgrel=7
pkgdesc="Zimbra Desktop is the next-generation email and collaboration client."
arch=('i686' 'x86_64')
url="http://www.zimbra.com/products/desktop.html"
license=('zimbra-public-eula')
source=("http://files2.zimbra.com/downloads/zdesktop/7.1.1/b10917/${pkgname}_${pkgver}_linux_i686.tgz")
md5sums=('1eba972bba0053cdcd6d5aa2f731e133')

build() {
	install -Ddm755 $pkgdir/opt/zimbra/zdesktop/
	cp -a -p $srcdir/${pkgname}_${pkgver}_linux_i686/app/* $pkgdir/opt/zimbra/zdesktop/
	msg "To install data files for additional users, please login as the user and run this command:"
	msg "/opt/zimbra/zdesktop/linux/user-install.pl"
}

