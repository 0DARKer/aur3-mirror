# Maintainer: Ner0

pkgname=orion-gtk-theme
pkgver=20130116
pkgrel=1
pkgdesc="A modern and light GTK theme"
arch=('any')
url="http://satya164.deviantart.com/art/Orion-GTK3-Theme-281431756"
license=('GPL')
depends=('gtk-engine-unico')
optdepends=('gtk-engine-murrine: For GTK-2 apps')
options=('!strip')
source=("http://ppa.launchpad.net/satyajit-happy/themes/ubuntu/pool/main/o/$pkgname/${pkgname}_2013.01.16.orig.tar.gz")
md5sums=('cc293284587596e3284e9a0d7f575e5e')

package() {
  cd Orion-master/
  find . -type f -not -name .gitignore -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/Orion/{}" \;
}
