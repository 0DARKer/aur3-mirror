# Contributor: Jelle van der Waa <jelle@vdwaa.nl>

ibver=ib2012
pkgname=belastingdienst-$ibver
pkgver=1.0
pkgrel=2
pkgdesc="Elektronische aangifte IB 2012 voor Linux, Nederlandse belastingdienst."
arch=('i686' 'x86_64')
url="http://www.belastingdienst.nl"
license=('custom')

depends=(libsm libxext)
if test "$CARCH" == x86_64; then
  depends=(lib32-libsm lib32-libxext lib32-gcc-libs)
fi

options=('!strip')
source=("http://download.belastingdienst.nl/belastingdienst/apps/linux/${ibver}_linux.tar.gz")
md5sums=('10d13765b44f98d40a43aed6dff6dd06')

package() 
{
  install -d $pkgdir/opt/belastingdienst/$ibver 
  install -d  $pkgdir/usr/bin

  cp -a $srcdir/$ibver/* $pkgdir/opt/belastingdienst/$ibver
  ln -s /opt/belastingdienst/$ibver/bin/${ibver}ux $pkgdir/usr/bin/${ibver}ux
}
