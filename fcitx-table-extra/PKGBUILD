# Contributor: Leewings Ac <osideal@gmail.com>

pkgname=fcitx-table-extra
pkgver=0.1.0
pkgrel=2
pkgdesc="fcitx-table-extra provides extra table for Fcitx, including Boshiamy, Zhengma, and Cangjie3, Cangjie5."
arch=('i686' 'x86_64')
url="http://code.google.com/p/fcitx/"
license=('GPLv2')
provides=('fcitx-table-extra')
depends=('fcitx>=4.2.0')
makedepends=('cmake')
source=(http://fcitx.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
sha1sums=('71a37f869bbe8a6876f7cabd8294a7346849aee9')

build()
{
    cd "$srcdir"
    rm -rf "$pkgname-$pkgver-build"
    cp -r "$pkgname-$pkgver" "$srcdir/$pkgname-$pkgver-build"
    cd "$pkgname-$pkgver-build"

    cmake . -DCMAKE_INSTALL_PREFIX='/usr' -DCMAKE_BUILD_TYPE=Release
    make || return 1
}

package()
{
    cd "$srcdir/$pkgname-$pkgver-build"
    make DESTDIR=$pkgdir install
}
