post_install() {
	echo " > VMware View client for Linux now has support for redirecting USB devices"
	echo " > to the virtual machine. To make this work you have to launch"
	echo " > /usr/lib/vmware/vmware-usbarbitrator and /usr/lib/vmware/vmware-view-usbd"
	echo " > before starting the client. Also make sure 'libudev-compat' is installed."
}

post_upgrade(){
	post_install
}
