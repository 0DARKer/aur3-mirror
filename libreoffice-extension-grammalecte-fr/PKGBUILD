# Maintainer: Pierre Buard <pierre.buard+aur gmail com>
pkgname=libreoffice-extension-grammalecte-fr
pkgver=0.0.11
pkgrel=1
pkgdesc='French grammar checker extension for LibreOffice'
arch=('any')
url='http://www.dicollecte.org/grammalecte/'
license=('GPL3')
depends=('libreoffice' 'hunspell-fr' 'libreoffice-extension-scripting-python')
groups=('libreoffice-extensions')
conflicts=('languagetool')
makedepends=('unzip')
source=(http://www.dicollecte.org/download/fr/Grammalecte-v$pkgver.oxt)
md5sums=('301585a74d3a136921418bd11d6c197f')

package() {
  install -dm755 $pkgdir/usr/lib/libreoffice/share/extensions
  unzip $srcdir/Grammalecte-v$pkgver.oxt -d $pkgdir/usr/lib/libreoffice/share/extensions/grammalecte
}
