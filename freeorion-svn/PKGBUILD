# Contributor: fana-m <geminin@gmx.net>

pkgname=freeorion-svn
pkgver=3881
pkgrel=1
pkgdesc="Free Clone of Master of Orion."
url="http://www.freeorion.org/index.php/Main_Page"
arch=('i686' 'x86_64')
license=('GPL')
depends=('ogre' 'bullet' 'python' 'sdl' 'sdl_mixer' 'freealut' 'graphviz' 'gigi-svn' 'libvorbis' 'libogg')
makedepends=('subversion' 'cmake')
provides=('freeorion')
conflicts=('freeorion')
source=(freeorion.png
        freeorion.desktop
        binary_serialization.patch
	freeorion.sh)
md5sums=('7064e5b16d222322ce90cd4598eec64e'
         'bcb518a25fe06e5522426ed5cefd1d06'
         '9ce9c5c6c9db7a08c3e9b5fe545b1485'
	 'c11b995e3893f243cab843216edfbcfd')

_svntrunk=https://freeorion.svn.sourceforge.net/svnroot/freeorion/trunk/FreeOrion/
_svnmod=freeorion

build() {
  #Grab the sources with svn
  msg "Checking for previous build"
  if [ -d $_svnmod/.svn ] ; then
    msg "Updating SVN sources"
    cd $_svnmod
    svn up || return 1
  else
    msg "Retrieving complete sources"
    svn co $_svntrunk $_svnmod || return 1
    cd $_svnmod
  fi
  msg "SVN checkout done or server timeout"

  msg "Starting make..."
  cp -r ${srcdir}/${_svnmod} ${srcdir}/${_svnmod}-build

  msg "Patching..."
  cd ${srcdir}
  patch -uNp0 -i $srcdir/binary_serialization.patch || return 1
  msg "Patching finished"

  cd ${srcdir}/${_svnmod}-build

  #Build and install the package
  export LDFLAGS="${LDFLAGS//-Wl,--as-needed}" 

  cmake -D CMAKE_INSTALL_PREFIX=/usr/share/freeorion . 
  make

  make DESTDIR=$pkgdir install

  #Correct stupid installation poop
  mv ${pkgdir}/usr/share/freeorion/default/default/* ${pkgdir}/usr/share/freeorion/default/
  rm -rf ${pkgdir}/usr/share/freeorion/default/default

  #Fix ogre_plugins.cfg to find our OGRE installation
  install -Dm644 ${srcdir}/freeorion/ogre_plugins.cfg ${pkgdir}/usr/share/freeorion/ogre_plugins.cfg
  sed -i 's|PluginFolder=.|PluginFolder=/usr/lib/OGRE/|g' ${pkgdir}/usr/share/freeorion/ogre_plugins.cfg 

  #Link binaries
  mkdir ${pkgdir}/usr/bin
  install -D -m755 ${srcdir}/freeorion.sh ${pkgdir}/usr/bin/freeorion

  #Install the icons and .desktop files
  install -D -m644 ${srcdir}/freeorion.png ${pkgdir}/usr/share/pixmaps/freeorion.png
  install -D -m644 ${srcdir}/freeorion.desktop ${pkgdir}/usr/share/applications/freeorion.desktop

  rm -rf ${srcdir}/${_svnmod}-build 
}

