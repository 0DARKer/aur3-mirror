pkgname=freeorion-svn
pkgver=r7882
pkgrel=1
pkgdesc="Free Clone of Master of Orion."
url="http://www.freeorion.org/index.php/Main_Page"
arch=('i686' 'x86_64')
license=('GPL')
depends=('boost' 'ogre' 'bullet' 'python2' 'sdl2' 'freealut' 'graphviz' 'libvorbis' 'libogg' )
makedepends=('subversion' 'cmake' 'dos2unix')
provides=('freeorion')
conflicts=('freeorion')
install=freeorion.install
source=("svn+https://svn.code.sf.net/p/freeorion/code/branches/SDL_Migration_And_Dependencies_Updates/"
        freeorion.install
        Font.cpp.2.patch
        boost-1.57-fix.patch
        remove_oisinput.patch
        )
md5sums=(
        'SKIP'
        'e88e49fbe0f638775f6be9bbc824e070'
        '3b2e4f0697981eb25e8b119e3b2168a9'
        '8ddd02220532510e73855e6c0b15dfe4'
        'e0a41fe77227cb2118eaee4c36934d3d'
        )


pkgver() {
  cd "$srcdir/SDL_Migration_And_Dependencies_Updates"
  local ver="$(svnversion)"
  printf "r%s" "${ver//[[:alpha:]]}"
}

build() {
  cd "$srcdir/SDL_Migration_And_Dependencies_Updates"
  patch -p0 < ../../boost-1.57-fix.patch
  dos2unix GG/src/Font.cpp
  patch -p0 < ../../Font.cpp.2.patch
  patch -p0 < ../../remove_oisinput.patch

  cd "$srcdir"
  mkdir -p "$srcdir/FreeOrion-build"
  cd "$srcdir/FreeOrion-build"
  cmake -DCMAKE_INSTALL_PREFIX=/usr ../SDL_Migration_And_Dependencies_Updates
  make
}

package() {
  cd "$srcdir/FreeOrion-build"
  make DESTDIR=$pkgdir install
}

