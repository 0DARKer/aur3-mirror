post_install() {
  echo " > Running depmod now..."
  depmod -a
  echo " > Reloading psmouse module... Do not panic if your mouse pointer does"
  echo "   not move for a moment!"
  modprobe -r psmouse
  sleep 0.5
  modprobe psmouse
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}

