pkgname=pgbadger
pkgver=5.1
pkgrel=2
pkgdesc="A fast PostgreSQL log analyzer"
arch=(any)
license=('BSD')
url="http://dalibo.github.com/pgbadger"
depends=('perl')
makedepends=('perl')
source=("http://downloads.sourceforge.net/pgbadger/5.1/pgbadger-5.1.tar.gz")

package() {
	cd $srcdir/pgbadger-$pkgver
	perl Makefile.PL INSTALLDIRS='perl'
	make && make DESTDIR=$pkgdir install
}
md5sums=('9472394e09ff7ad036038b1cb35d787b')
