# Contributor: Mattias Wong <0x1998@gmail.com>

pkgname=pgbadger
pkgver=6.0
pkgrel=1
pkgdesc="A fast PostgreSQL log analyzer"
arch=(any)
license=('BSD')
url="http://dalibo.github.com/pgbadger"
depends=('perl')
makedepends=('perl')
source=("http://downloads.sourceforge.net/pgbadger/${pkgver}/pgbadger-${pkgver}.tar.gz")

package() {
	cd $srcdir/pgbadger-$pkgver
	perl Makefile.PL INSTALLDIRS='perl'
	make && make DESTDIR=$pkgdir install
}

md5sums=('55b680a4b49803f9f59a52bcc2ac0d6d')
