# Maintainer : neolith

pkgname=frost
pkgver=2009.03.14
pkgrel=1
pkgdesc="Frost is a Freenet 0.7 client that provides newsgroup-like messaging, private encrypted messages, file upload and download functionality and a file sharing system."
arch=('any')
url="http://jtcfrost.sourceforge.net/"
depends=('freenet')
makedepends=('unzip')
license=('GPL')
install=frost.install
source=("http://downloads.sourceforge.net/project/jtcfrost/frost/14-Mar-2009/frost-14-Mar-2009.zip"
	"frost.desktop")
md5sums=('fe8f811cdea322fe85f860e6cf4d42cd'
	'58c1f4d26d48bc13a675c97892379155')
build() {
	mkdir $srcdir/frost
	cd $srcdir/frost
	unzip ../frost-14-Mar-2009.zip
	
	chmod g+w $srcdir/frost
	chmod g+w $srcdir/frost/config
	chmod g+w $srcdir/frost/downloads
	chmod a+x $srcdir/frost/frost.sh
	chmod a+x $srcdir/frost/browser.sh
	chmod a+x $srcdir/frost/frost-debug.sh

	chmod a+x $srcdir/frost.desktop
	cp $srcdir/frost.desktop $srcdir/frost/frost.desktop -p

	mkdir -p $pkgdir/opt
	cp $srcdir/frost $pkgdir/opt -rp
}
