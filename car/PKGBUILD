pkgname=car
pkgver=9.3
pkgrel=1
url="http://zirkel.sourceforge.net"
pkgdesc="Circle and Ruler is a dynamic geometry program."
arch=('any')
license=('GPL')
depends=('java-runtime')
makedepends=('imagemagick')
source=(http://mathsrv.ku-eichstaett.de/MGF/homes/grothmann/zirkel/download/car.zip  \
        http://zirkel.sourceforge.net/doc_en/images/ZuL-Logo.png \
        car.desktop car.sh)
md5sums=('bff8b19a6eb74da2a56f46d82deefca8' '44756f64232dcba353fda79564468f68'\
         '1fa08c829ed487f68834d3fb749a81c1' 'd6c88034b76acea5f7b8e8eb48f6e34e')

build() {
        cd "$srcdir/car"
	install -Dm644 $srcdir/car/doc_en/zirkel.jar \
	  $pkgdir/usr/share/car/zirkel.jar || return 1
	install -d $pkgdir/usr/share/icons || return 1
	install -Dm644 $srcdir/car/images/zirkel.png \
	  $pkgdir/usr/share/icons/zul-small.png || return 1
	install -Dm755 $srcdir/car.sh $pkgdir/usr/bin/car || return 1
	install -Dm755 $srcdir/car.desktop \
	  $pkgdir/usr/share/applications/car.desktop || return 1
} 
