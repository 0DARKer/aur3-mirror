pkgname=car
pkgver=9.4
pkgrel=1
url="http://zirkel.sourceforge.net"
pkgdesc="Circle and Ruler is a dynamic geometry program"
arch=('any')
license=('GPL')
depends=('java-runtime')
source=(http://mathsrv.ku-eichstaett.de/MGF/homes/grothmann/zirkel/download/car.zip
        car.desktop
	car.sh)

package() {
        cd "$srcdir/car"
	install -Dm644 $srcdir/car/doc_en/zirkel.jar \
	  $pkgdir/usr/share/java/car/zirkel.jar
	install -d $pkgdir/usr/share/pixmaps
	install -Dm644 $srcdir/car/doc_en/images/ZuL-Logo.png \
	  $pkgdir/usr/share/pixmaps/car.png
	install -Dm755 $srcdir/car.sh $pkgdir/usr/bin/car
	install -Dm644 $srcdir/car.desktop \
	  $pkgdir/usr/share/applications/car.desktop
} 
md5sums=('988ace2fb44118f6dc2059d3c455dceb'
         'e8852aa04a484d6b430214af36586a6f'
         'b4cb370d2e3630610b5f94bc9b0ab58e')
