# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=tal-plugins
pkgver=0.4
pkgrel=1
pkgdesc="Togu Audio Line VST plugins - NoiseMaker, Elek7ro, Dub III, Filter, Filter II, Reverb, Reverb II, Reverb III - ported and compiled for Linux by KXStudio"
arch=('i686' 'x86_64')
url="http://kunz.corrupt.ch/"
depends=('libgl' 'alsa-lib' 'gcc-libs')
license=('GPL')
source=(http://sourceforge.net/projects/kxstudio/files/VST/${pkgname}_${pkgver}.tar.gz)
md5sums=('5a0c1ca30d15a959a89d5d42375c7cb6')
sha256sums=('d7de25091d5922f2fe9e38de5c6c51503f3c516e2eda8b771cc8a888cae34480')

package() {

  [ "$CARCH" = "i686" ] && _src=32bit
  [ "$CARCH" = "x86_64" ] && _src=64bit

  mkdir -p ${pkgdir}/usr/lib/vst
  cp ${pkgname}/${_src}/*.so ${pkgdir}/usr/lib/vst

}