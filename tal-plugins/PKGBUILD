# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=tal-plugins
pkgver=0.2
pkgrel=1
pkgdesc="Togu Audio Line VST plugins - NoiseMaker, Elek7ro, Dub III, Filter, Filter II, Reverb, Reverb II - ported and compiled for Linux by KXStudio"
arch=('i686' 'x86_64')
url="http://kunz.corrupt.ch/"
depends=('libgl' 'gcc-libs' 'freetype2' 'libxext')
license=('GPL')
source=(http://sourceforge.net/projects/kxstudio/files/VST/${pkgname}_${pkgver}.tar.gz)
md5sums=('85417cf28f62066d2ed9c40920753527')

package() {

  [ "$CARCH" = "i686" ] && _src=32bit
  [ "$CARCH" = "x86_64" ] && _src=64bit

  mkdir -p $pkgdir/usr/lib/vst
  cp ${_src}/*.so $pkgdir/usr/lib/vst

}
