pkgname=tal-plugins
pkgver=20110913
pkgrel=1
pkgdesc="Togu Audio Line VST plugins - NoiseMaker, Dub III, Filter, Filter II, Reverb, Reverb II, Reverb III, Vocoder II - ported and compiled for Linux"
arch=('i686' 'x86_64')
url="http://distrho.sourceforge.net"
depends=('freetype2' 'libxext' 'gcc-libs')
license=('GPL')
source=(http://sourceforge.net/projects/distrho/files/Ports/TAL-Plugins_LinuxVST-32bit_${pkgver}.zip)
md5sums=('67b357657c7d06e78a187ab89d995e1c')
sha256sums=('8984e6872327986bc9b93d95336d23fcac2f5a7e632e4fdb2d7f1d17110a04f7')
if [[ $CARCH == x86_64 ]]; then
  source=(http://sourceforge.net/projects/distrho/files/Ports/TAL-Plugins_LinuxVST-64bit_${pkgver}.zip)
  md5sums=('d71e6d19652d8e878fd82abb75da840d')
  sha256sums=('be9969f04225c95d70350f9de752d190dcef5191e83581ce58fdc1707edc5c99')
fi

package() {
  mkdir -p "${pkgdir}/usr/lib/vst"
  cp *.so "${pkgdir}/usr/lib/vst"
}
