# Contributor: Nassim Kacha <nassim.kacha@gmail.com> 
pkgname=capivara
pkgver=0.8.8
pkgrel=1
pkgdesc="A graphical file transfer and file synchronization application. It supports network protocols such as SFTP and FTP"
arch=('i686' 'x86_64')
url="http://capivara.sourceforge.net"
license=('GPL2')
depends=('java-runtime')
makedepends=('unzip')
source=(http://freefr.dl.sourceforge.net/project/capivara/capivara-testing/$pkgver-pre3/$pkgname-$pkgver-pre3-bin.zip capivara.desktop)
md5sums=('26f189a479e83f5e76df1030aa6bfaaa' '7bbb8d3c07451f5d702636a2538f4031')

build() {
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/$pkgname
  mkdir -p $pkgdir/usr/share/applications
  cp capivara.desktop $pkgdir/usr/share/applications/
  cp -r $srcdir/$pkgname-$pkgver-pre3/* $pkgdir/usr/share/$pkgname/
  echo "java -jar /usr/share/capivara/capivara.jar" > $pkgdir/usr/bin/$pkgname
  chmod 755 $pkgdir/usr/bin/$pkgname
}
 
