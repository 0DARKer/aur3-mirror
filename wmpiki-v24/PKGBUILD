pkgname=wmpiki-v24
pkgver=0.2.4
pkgrel=2
pkgdesc="Connection-2-Host checker dockapp for Window Maker and compatible. v0.2.4 (runs as 'wmpiki')"
arch=('i686' 'x86_64')
# url may be broken.  I have not checked it.  
url="http://clay.ll.pl/dockapps.html" 
license=('GPL')
groups=('x11')
depends=('libxpm')
optdepends=('windowmaker: for native use.  Note: Can be used with any window manager')
conflicts=("wmpiki")
source=("http://dockapps.windowmaker.org/download.php/id/587/wmpiki-$pkgver.tar.gz")
md5sums=("119c87de9c0f2aa2e496a9797b1e9055")
install=wmpiki-v24.install
build() {
    export pkgname=`echo -n $pkgname | sed s/-v24//g`
    cd "$srcdir/$pkgname-$pkgver"
    make
    : '
    echo
    echo "current directory"
    pwd 
    ls 
    echo
    echo "srcdir is $srcdir"
    echo 
    echo "\$srcdir/$pkgname-\$pkgver is $srcdir/$pkgname-$pkgver"'
}

package() {
    export pkgname=`echo -n $pkgname | sed s/-v24//g`
    cd "$srcdir/$pkgname-$pkgver"
    mkdir -p "$pkgdir/usr/bin"
    mkdir -p "$pkgdir/usr/share/doc/$pkgname"
    install -D $pkgname "$pkgdir/usr/bin/$pkgname"
    install -m 444 AUTHORS ChangeLog README COPYING "$pkgdir/usr/share/doc/$pkgname"

}

