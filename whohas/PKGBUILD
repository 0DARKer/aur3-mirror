# Maintainer:  TDY <tdy@gmx.com>
# Contributor: Christoph Zeiler <rabyte*gmail>

pkgname=whohas
pkgver=0.23
pkgrel=1
pkgdesc="A tool for querying package repositories from various distros"
arch=('any')
url="http://www.philippwesche.org/200811/whohas/intro.html"
license=('GPL')
depends=('perl-libwww')
source=(http://www.philippwesche.org/200811/whohas/whohas-$pkgver.tar.gz)
md5sums=('0895fb6353950fe2e686fa867aaf0416')

build() {
  cd "$srcdir/whohas-$pkgver"
  install -Dm755 program/whohas "$pkgdir/usr/bin/whohas"
  install -Dm644 usr/share/man/man1/whohas.1 \
    "$pkgdir/usr/share/man/man1/whohas.1"
  install -Dm644 usr/share/man/de/man1/whohas.1 \
    "$pkgdir/usr/share/man/de/man1/whohas.1"
}
