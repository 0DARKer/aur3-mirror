# Special thx to talsemgeest for this program.

# Contributor: Dragos240 <dragos240@linuxmail.org>
pkgname=myencoder
pkgver=0.01
pkgrel=1
pkgdesc="A simple frontend for ffmpeg"
arch=('i686' 'x86_64')
url="http://talsemgeest.doesntexist.com/"
license=('unknown')
groups=()
depends=('python' 'gtk' 'glade' 'ffmpeg')
source=(http://talsemgeest.doesntexist.com/myencoder/files/myencoder-0.01.tar.gz)
md5sums=('7cd2b3d8a3a62b4ad6249db73e26e162')
build() {
  cd "$srcdir"
  cp $srcdir/app.py $HOME/myencoder/pkg2/usr/bin/
  mkdir $HOME/myencoder/pkg2/$HOME
  cp $srcdir/gui2.glade $HOME/myencoder/pkg2/$HOME/
  cp $srcdir/myencoder $HOME/myencoder/pkg2/usr/bin/
  cp -r $HOME/myencoder/pkg2/* $HOME/myencoder/pkg
}

