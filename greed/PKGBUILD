pkgname=greed
pkgver=3.4
pkgrel=3
pkgdesc='The strategy game of Greed.'
arch=('i686' 'x86_64')
url='http://www.catb.org/~esr/greed/'
license=('GPL')
source=(http://www.catb.org/~esr/greed/$pkgname-$pkgver.tar.gz)
md5sums=('d5d254db1e093e0bfb51ad11c35e1093')

build() {
    cd $pkgname-$pkgver

    make CFLAGS="${CFLAGS}" || return 1
    #make DESTDIR="$pkgdir" install || return 1 <--- should use this line but doesn't work the the Makefile

    touch greed.hs
    install -m755 -D greed $pkgdir/usr/bin/greed
    install -m766 -D greed.hs $pkgdir/usr/games/lib/greed.hs
}
