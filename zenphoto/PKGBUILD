# Maintainer: Michael Asher < michael [at] wesolveeverything dot com > 

pkgname=zenphoto
pkgver=1.4.4
pkgrel=1
pkgdesc="A PHP-based photo gallery." 
arch=('any')
url="http://www.zenphoto.org/"
license=('GPL')
depends=('php' 'mysql')
source=(https://github.com/zenphoto/zenphoto/archive/Zenphoto-$pkgver.tar.gz)
md5sums=('ba36c308fa152723c00ce574a25080a4')

install=$pkgname.install

package() {
  cd $srcdir/$pkgname-Zenphoto-$pkgver
  mkdir -p $pkgdir/srv/http/zenphoto
  cp -r * $pkgdir/srv/http/zenphoto/
}
