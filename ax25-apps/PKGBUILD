pkgname=ax25-apps
pkgver=0.0.8_rc2
pkgrel=1
pkgdesc="Programs for the hamradio protocol AX.25 that would be used by normal users"
arch=('i686' 'x86_64')
url='http://www.linux-ax25.org'
license=('GPL2')
makedepends=('make' 'libax25')
source=(http://www.linux-ax25.org/pub/${pkgname}/${pkgname}-0.0.8-rc2.tar.gz)
md5sums=('a2bda780a3422db85c1a42459358faef')
sha1sums=('5425c3a3dd8a109a7f4a9c817951fdc9d1363176')
sha256sums=('16413c199dec243520ba2df7d0b915102263943e4249a542781ae410e217e3e3')
sha384sums=('7eda2ed70b48229e226bbc6d89eb9de8a8fea70c8ac086efae2113cf03b1a4a61e07b0e2f9406d7e8eb00aeb006db47c')
sha512sums=('b001f201234f99951e076494f0eded512e5638f6e585892c38f3fdd465c09df073a5dff2898e340357f996fd4e97657e09a1d7f8bf7a05d9d33da38cf2d2bc60')

build() {
cd $srcdir/${pkgname}-0.0.8-rc2
./configure --prefix=/usr || return 1
make clean
make || return 1
make install DESTDIR=$startdir/pkg || return 1
}
