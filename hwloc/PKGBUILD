pkgname=hwloc
pkgver=1.1
pkgrel=1
pkgdesc="Portable Hardware Locality"
arch=('i686' 'x86_64')
url="http://www.open-mpi.org/projects/hwloc/"
license=('BSD')
makedepends=('make')
optdepends=('cairo: Graphical output' 'libxml2: XML export')
source=(http://www.open-mpi.org/software/hwloc/v1.1/downloads/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('1b0984ac7ae1bbdee91c159e27e665ad51ac23fe')
 
build() {
   cd "$srcdir/$pkgname-$pkgver"
 
   ./configure --prefix=/usr || return 1
 
   make || return 1
   make DESTDIR=$pkgdir install || return 1
}

