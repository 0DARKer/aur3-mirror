# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-getopt-long-descriptive'
pkgver='0.085'
pkgrel='1'
pkgdesc="Getopt::Long with usage text and validation"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-params-validate>=0.74' 'perl-sub-exporter')
url='http://search.cpan.org/dist/Getopt-Long-Descriptive'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Getopt-Long-Descriptive-0.085.tar.gz')
md5sums=('164a77e4029f8a11b6cb4ff51bdc1bbc')

build() {
  DIST_DIR="${srcdir}/Getopt-Long-Descriptive-0.085"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
