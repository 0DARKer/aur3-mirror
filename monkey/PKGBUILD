#Maintainer: Gary Wright <wriggary at gmail dot com>
pkgname=monkey
pkgver=0.11.0
pkgrel=1
pkgdesc="A very small and fast open source web server for Linux"
arch=('i686' 'x86_64')
url="http://www.monkey-project.com/"
license=('GPL2')
depends=('gcc-libs')
#optdepends=('php: currently not working, but planned for 0.11.0')
source=("http://www.monkey-project.com/releases/0.11/$pkgname-$pkgver.tar.gz"
    monkey)
install=monkey.install
md5sums=('bb290cbe9e7e2ed02dcb73a822ddb022'
         '02bf4b20eef0b81efb7646f29e28d3d3')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc/$pkgname \
  --datadir=/var/www/htdocs --logdir=/var/log/$pkgname \
  --plugdir=/usr/lib/$pkgname --cgibin=/var/www/htdocs/cgi-bin
  make 
  make DESTDIR=$pkgdir install
  install -d $pkgdir/etc/rc.d/
  install -m 755 ../monkey $pkgdir/etc/rc.d/monkey

}

