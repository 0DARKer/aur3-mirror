#Maintainer: JHeaton <jheaton at archlinux dot us>
#Contributor: Gary Wright <wriggary at gmail dot com>
pkgname=monkey
pkgver=0.13.2
pkgrel=1
pkgdesc="A very small and fast open source web server for Linux"
arch=('i686' 'x86_64')
url="http://www.monkey-project.com/"
license=('GPL2')
depends=('gcc-libs')
optdepends=('php')
source=("http://www.monkey-project.com/releases/0.13/$pkgname-$pkgver.tar.gz"
    monkey)
install=monkey.install
md5sums=('2182228984aeb3962bec5c82592e7ce1'
         '9e3a948a30e66a7b3a5950a5edaaaacb')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc/$pkgname \
  --datadir=/srv/http --logdir=/var/log/$pkgname \
  --plugdir=/usr/lib/$pkgname --cgibin=/var/www/htdocs/cgi-bin
  make 
  make DESTDIR=$pkgdir install
  install -d $pkgdir/etc/rc.d/
  install -m 755 ../monkey $pkgdir/etc/rc.d/monkey
}
