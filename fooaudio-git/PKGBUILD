# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: DuGi <dugi@irc.pl>

pkgname=fooaudio-git
pkgrel=1
pkgver=20100515
pkgdesc='Lightweight music player inspired by Foobar2000.'
arch=('i686' 'x86_64')
url='http://blog.matthew.org.pl/2009/09/06/fooaudio-0-1'
license=('GPL')
depends=('phonon')
makedepends=('git')

_gitname='fooaudio'
_gitroot="git://github.com/pingwinek/$_gitname.git"

build() {
    msg 'Connecting to GIT server....'
    if [ -d "$srcdir/$_gitname" ] ; then
        cd $_gitname
        git pull origin || return 1
    else
        git clone $_gitroot || return 1
        cd $_gitname
    fi
    msg "GIT checkout done"

    cd src/fooaudio

    qmake  || return 1
    make || return 1

    install -D "$srcdir/$_gitname/fooaudio" "$pkgdir/usr/bin/fooaudio" || return 1
}
