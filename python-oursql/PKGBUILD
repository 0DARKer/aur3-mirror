# Contributer: Richard Murri <admin@richardmurri.com>

pkgname=python-oursql
pkgver=0.9.2
pkgrel=2
pkgdesc="new set of MySQL bindings for python"
arch=(any)
url="https://launchpad.net/oursql"
license=('BSD')
depends=('python2>=2.4' 'libmysqlclient')
makedepends=('setuptools')
source=(http://launchpad.net/oursql/trunk/$pkgver/+download/oursql-$pkgver.tar.gz)
md5sums=('c152929d33b67ff13f0a25d8c8d0fd4b')

build() {
  cd "$srcdir/oursql-$pkgver"

  # distutils build is broken, use stupid hack below instead
  python2 ./setup.py install --root=$pkgdir --prefix=/usr || return 1
}

