# Contributor: ReNoM <renom@list.ru>
pkgname=mednafen-server
pkgver=0.4.2
pkgrel=1
pkgdesc="Server for Mednafen network game."
arch=(i686 x86_64)
url="http://mednafen.sourceforge.net/"
license="GPL"
#depends=()
#makedepends=()
source=(http://downloads.sourceforge.net/mednafen/$pkgname-$pkgver.tar.bz2)
md5sums=('99487b87a4ec562bf6608d25a508c482')

build() {
  cd "$srcdir/$pkgname"
  ./configure
  make || return 1
  make DESTDIR=$startdir/pkg install
  mkdir -p $pkgdir/usr/share/mednafen-server
  install -D -m 644 -t $pkgdir/usr/share/mednafen-server standard.conf
}
