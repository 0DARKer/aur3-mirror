pkgname=perl-xmlrpc-lite
pkgver=0.717
pkgrel=1
pkgdesc="The XML RPC implemention for Perl"
arch=('any')
url="http://search.cpan.org/dist/XMLRPC-Lite/"
depends=("perl")
license=('GPL')
source=(http://search.cpan.org/CPAN/authors/id/P/PH/PHRED/XMLRPC-Lite-$pkgver.tar.gz)
md5sums=('7ae6b541139696fcf8f758d713af9ecd')

build() {
    cd ${srcdir}/XMLRPC-Lite-${pkgver}
    perl Makefile.PL PREFIX=${pkgdir}/usr/
    make
}

package() {
    cd ${srcdir}/XMLRPC-Lite-${pkgver}
    make install
}
