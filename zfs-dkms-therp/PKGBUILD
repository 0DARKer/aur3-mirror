pkgname=("zfs-dkms-therp")
pkgver=0.6.3
_pkgver=${pkgver/_/-}
pkgrel=1
pkgdesc="Kernel modules for the Zettabyte File System."
depends=("spl-dkms-therp=${pkgver}-${pkgrel}" "zfs-utils-therp=${pkgver}-${pkgrel}" "dkms")
arch=("i686" "x86_64")
url="http://zfsonlinux.org/"
source=(http://archive.zfsonlinux.org/downloads/zfsonlinux/zfs/zfs-${_pkgver}.tar.gz)
groups=("archzfs")
md5sums=('0b183b0abdd5be287046ad9ce4f899fd')
license=("CDDL")
install=zfs-dkms-therp.install

build() {
  cd "$srcdir/zfs-${_pkgver}"
  ./autogen.sh
  scripts/dkms.mkconf -v ${_pkgver} -f dkms.conf -n zfs
}


package_zfs-dkms-therp() {
   install -d ${pkgdir}/usr/src/zfs-${_pkgver}
   cp -a ${srcdir}/zfs-${_pkgver}/ ${pkgdir}/usr/src/
}

md5sums=('5bcc32c122934d421eba68e16826637d')
