# Maintainer: Kosava <kosava@archlinux.us>

pkgname=postler
pkgver=0.1.0
pkgrel=2
pkgdesc="Postler is simple desktop mail client built in vala"
arch=('i686' 'x86_64')
url="https://launchpad.net/postler"
license=('GPL')
depends=('libwebkit' 'libunique' 'libcanberra' 'libnotify' 'libindicate')
makedepends=('vala' 'intltool' 'librsvg' 'gettext' 'python2' 'msmtp')
provides=('postler')
conflicts=('postler-bzr')
source=(http://git.xfce.org/apps/postler/snapshot/postler-0.1.0.tar.bz2 postler.install)
install="$pkgname.install"
md5sums=('0247cdf1ab8e2d919c9299a52646f47a'
         '7541710086c2b4f45da7268c137ed708')

build() {
  cd $srcdir/$pkgname-$pkgver
  msg "Patching the buildscript to use python2..."
  sed -i "s|#!/usr/bin/env python|#!/usr/bin/env python2|g" waf
   ./waf configure --prefix=/usr --disable-libindicate
   ./waf build
   ./waf --destdir=$pkgdir install
}
