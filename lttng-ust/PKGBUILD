# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=lttng-ust
pkgver=2.0.2
pkgrel=2
pkgdesc="Userspace tracing library for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL2 LGPL2')
depends=('liburcu')
optdepends=('babeltrace')
source=(http://lttng.org/files/$pkgname/$pkgname-$pkgver.tar.bz2)
install='lttng-ust.install'
sha1sums=('96527246aab3587d3381a65b381d46cc94a9d095')

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	./configure
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
