# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=lttng-ust
pkgver=2.0.1
pkgrel=1
pkgdesc="Userspace tracing library for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL2 LGPL2')
depends=('liburcu')
optdepends=('babeltrace')
source=(http://lttng.org/files/$pkgname/$pkgname-$pkgver.tar.bz2)
install='lttng-ust.install'
md5sums=('a129a4a13dd4e9a6527af6a0256f24d6')

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	./configure
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
