# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=lttng-ust
pkgver=2.0.4
pkgrel=1
pkgdesc="Userspace tracing library for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL2 LGPL2')
depends=('liburcu')
optdepends=('babeltrace')
source=(http://lttng.org/files/$pkgname/$pkgname-$pkgver.tar.bz2)
install='lttng-ust.install'
sha1sums=('f59eb6f65933163a6e34709b1c9daa5f50d9511f')

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
