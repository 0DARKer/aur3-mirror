# Maintainer: Francois Rigaut <frigaut at gmail dot com>

pkgname=yorick-yutils
_pkgshonam=yutils
pkgver=1.5.0
pkgrel=1
pkgdesc="General utilies for yorick"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.maumae.net/yorick/doc/plugins.php"
groups=('science' 'yorick-all')
depends=('yorick')
makedepends=('yorick')
source=(http://www.maumae.net/yorick/packages/src/${_pkgshonam}-${pkgver}-src.tgz)
md5sums=('c8d86715be5f9453fd0b8c70dd39308a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  yorick -batch make.i
  make
  make DESTDIR=${pkgdir} install
}
