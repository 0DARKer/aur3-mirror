# Maintainer: t3kk3n <corp@hush.ai>

pkgname=fatx
pkgver=1.4
pkgrel=1
pkgdesc="XBox (first-version) filesystem support for linux"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/fatx/"
license=('GPL')
provides=($pkgname)
depends=('fuse' 'boost-libs')
source=("http://downloads.sourceforge.net/project/fatx/${pkgname}_${pkgver}.orig.tar.gz")
md5sums=('243d71030a2e8c55f4fed56653bc777c')

build() {
	cd "$srcdir/"
	./configure --prefix=/usr --sbindir=/usr/bin
	make
}

package() {
	cd "$srcdir/"
	make DESTDIR="$pkgdir/" install
}
