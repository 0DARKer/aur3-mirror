#Submitter: anespor
#Maintainer: Alois Nespor <info@aloisnespor.info>

pkgname=gnome-shell-extension-gnome-shell-activities-hotspot-disabler-git
pkgver=20110726
pkgrel=1
pkgdesc="Activities hotspot disabler."
arch=('i686' 'x86_64')
url="git://github.com/hermanus/gnome-shell-extensions.git"
license=('GPL' 'LGPL')
depends=('gnome-shell-extensions-common')
makedepends=('git' 'gnome-common' 'intltool')
conflicts=('gnome-shell-extensions-git')
_gitroot="git://github.com/hermanus/gnome-shell-extensions.git"
_gitname="Gnome-shell-activities-hotspot-disabler"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
}

package() {
   cd "$srcdir/$_gitname/$_gitname/"
   mkdir -p $pkgdir/usr/share/gnome-shell/extensions/activitieshotspotdisabler@harmus.gmail.com
   cp $srcdir/$_gitname/$_gitname/* $pkgdir/usr/share/gnome-shell/extensions/activitieshotspotdisabler@harmus.gmail.com
}

