#!/bin/bash

post_install()
{
cp -f /usr/share/wbar/dot.wbar /usr/share/wbar/dot.wbar_bak
cp -f /usr/share/wbar/dot.wbar.new /usr/share/wbar/dot.wbar
}

post_upgrade()
{
cp -f /usr/share/wbar/dot.wbar.new /usr/share/wbar/dot.wbar
}

post_remove()
{
mv -f /usr/share/wbar/dot.wbar_bak /usr/share/wbar/dot.wbar
}
