# Maintainer: Alexander Ovsyannikov <ovsinc@ya.ru>
# Contributor: Alexander Ovsyannikov <ovsinc@ya.ru>

pkgname=openarch_wbar_theme
pkgver=0.1
pkgrel=1
pkgdesc="Wbar theme and icons"
arch=('any')
url="http://wbar.org/"
license=('GPL')
depends=('wbar')
optdepends=('wbarconf: Configuration GUI for wbar written in Python and GTK')
install=$pkgname.install
source=('http://ovsinc.narod.ru/wbar/dot.wbar.new' 
		"${pkgname}.install"
		'http://ovsinc.narod.ru/wbar/wbar_icons_openarch-0.1.tar.gz')

md5sums=('a215a4b9044712d25cbebcd09dc56861'
         'aa996111c9166d1b7b9e4d2f7099f173'
         '67e8ca13222385e27d6681dd36663aad')

build() {
	install -d "${pkgdir}"/usr/share/wbar/iconpack/openarch
	install "${srcdir}"/dot.wbar.new "${pkgdir}"/usr/share/wbar/dot.wbar.new
	cp  "${srcdir}"/openarch/* "${pkgdir}"/usr/share/wbar/iconpack/
}


