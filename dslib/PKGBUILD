# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=dslib
pkgver=1.5
pkgrel=1
pkgdesc="Free Python library for accessing Datove schranky"
arch=('any')
url="http://labs.nic.cz/page/740/dsgui/"
license=('LGPL')
depends=('python2-pyopenssl')
makedepends=('python2-distribute')
source=(http://labs.nic.cz/files/labs/datove_schranky/$pkgname-$pkgver.tar.gz)
sha256sums=('8bc786eb03f8a0d592fd0ab7b3133cd7ce1ace222bbb6ac06807ae5c5b5da1f5')

build() {
  cd ${srcdir}/$pkgname-$pkgver

#Python2 fix
  for file in $(find . -name '*.py' -print); do
    sed -i 's_^#!.*/usr/bin/python_#!/usr/bin/python2_' $file
    sed -i 's_^#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' $file
  done

  python2 setup.py install --root=${pkgdir}
}
