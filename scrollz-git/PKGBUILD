# Maintainer: aksr <aksr at t-com dot me>
pkgname=scrollz-git
pkgver=ScrollZ.2.2.3.r20.g0ba23d3
pkgrel=1
pkgdesc="An advanced IRC client based on ircII client."
arch=('i686' 'x86_64')
#url="http://www.scrollz.com"
url="https://github.com/ScrollZ/ScrollZ"
license=('custom')
groups=()
depends=('ncurses' 'gnutls' 'openssl' 'p11-kit')
makedepends=('git')
optdepends=()
provides=('scrollz')
conflicts=('scrollz')
replaces=()
backup=()
options=()
install=
source=(makefile.diff)
noextract=()
md5sums=('08ffe17576bc23bdb791ea3e502ef633')
sha1sums=('00124cf382288b304a094e8084311b6f46130ed2')

_gitroot=https://github.com/ScrollZ/ScrollZ.git
_gitname=ScrollZ

pkgver() {
  cd "$srcdir/$_gitname"
  git describe --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  patch -p1 -i $srcdir/makefile.diff

  ./configure --prefix=/usr \
              --enable-regexp \
              --enable-fish \
              --enable-ipv6 \
              --with-ssl \
              --with-openssl \
              --with-default-server=chat.freenode.net:6667
    make

}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install

  install -Dm644 COPYRIGHT $pkgdir/usr/share/licenses/$pkgname/COPYRIGHT
}

# vim:set ts=2 sw=2 et:
