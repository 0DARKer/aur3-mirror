# Contributor: Marcelo A. B. Slomp <mslomp@archlinux.com.br>

pkgname=z26
pkgver=2.13
pkgrel=1
pkgdesc="An Atari 2600 Emulator"
arch=("i686")
url="http://www.whimsey.com/z26/z26.html"
depends=('sdl')
makedepends=('nasm')
license=('GPL')
source=('http://www.whimsey.com/z26/z26v213.tar.gz')
md5sums=('0b0b9b42f203f6defca74a85f071f7c8')


build() {
	cd ${startdir}/src/z26_snapshot-20040523
	make linux
	make z26.man
	mkdir -p ${startdir}/pkg/usr/{bin,share/man/man1}
	cp z26 ${startdir}/pkg/usr/bin
	cp z26.man ${startdir}/pkg/usr/share/man/man1
}
