# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=schafkopf-git
pkgver=20130221
pkgrel=1
pkgdesc="KDE port of a Popular Bavarian card game also known as Sheepshead in parts of the USA."
url="http://schafkopf.berlios.de/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('kdebase-runtime' 'libkdegames' 'qimageblitz')
makedepends=('automoc4' 'cmake' 'git')

_gitroot=git://github.com/benni0815/SchafKopf.git
_gitname=SchafKopf


build() {
   cd $srcdir
   msg "Connecting to GIT server...."

   if [ -d $srcdir/$_gitname ] ; then
  	cd $_gitname && git pull origin
  	msg "The local files are updated."
   else
  	git clone $_gitroot
   fi

   msg "GIT checkout done or server timeout"
   msg "Starting make..."


   cd $srcdir/$_gitname

   cmake . -DCMAKE_INSTALL_PREFIX=/usr
   make DESTDIR=$pkgdir install
}