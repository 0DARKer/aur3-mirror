# Maintainer: Andrwe Lord Weber <lord-weber-andrwe [at] andrwe [dot] org>

pkgname=apvlv-git
pkgver=20110630
pkgrel=2
pkgdesc="A pdf viewer which behaves like Vim."
arch=('i686' 'x86_64')
url="http://naihe2010.github.com/apvlv/"
license=('GPL')
depends=('poppler-glib' 'djvulibre')
makedepends=('git' 'cmake')
conflicts=('apvlv')
source=()
md5sums=()

_gitroot="https://github.com/naihe2010/apvlv.git"
_gitname="apvlv"

build() {
	cd "${srcdir}"
	msg "Connecting to GIT server...."
	
	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone -b master $_gitroot $_gitname
	fi
	
	msg "GIT checkout done or server timeout"

	if [ -d "${srcdir}/${_gitname}-build" ]
	then
		rm -rf "${srcdir}/${_gitname}-build"
	fi

	cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
	cd "${srcdir}/${_gitname}-build"
	
	msg "Starting make..."

	mkdir -p build
	cd build

	cmake -DCMAKE_BUILD_TYPE=Release \
	        -DCMAKE_INSTALL_PREFIX=/usr \
	        -DAPVLV_WITH_UMD=no  ..
	make
}

package()
{
	cd "${srcdir}/${_gitname}-build"/build
	make DESTDIR=${pkgdir} install
}
