# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on the polkit-gnome package trunk

_pkgbase=polkit-gnome
pkgname=polkit-gnome-dev
pkgver=0.101
pkgrel=1
pkgdesc="PolicyKit integration for the GNOME desktop"
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/PolicyKit"
license=('LGPL')
depends=("polkit>=${pkgver}" 'gtk3')
makedepends=('intltool' 'gobject-introspection')
options=(!libtool)
conflicts=("${_pkgbase}")
provides=("${_pkgbase}=${pkgver}")
source=(http://hal.freedesktop.org/releases/${_pkgbase}-${pkgver}.tar.bz2)
md5sums=('da6aaff473ed80f8958fd6f67a59defe')

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/polkit-gnome --disable-static --with-gtk=3.0
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}