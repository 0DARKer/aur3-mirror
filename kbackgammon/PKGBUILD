# Maintainer: nqn1976 @ gmail.com

pkgname=kbackgammon
_pkgname=KBackgammon
pkgver=0.14
pkgrel=1
pkgdesc="Backgammon game for KDE"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/KBackgammon?content=142680"
license=('GPL')
depends=('kdebase-runtime' 'kdegames-libkdegames')
makedepends=('cmake' 'automoc4')
source=("http://kde-apps.org/CONTENT/content-files/142680-${_pkgname}_012.tar.gz")
md5sums=('bfc3f6de91e45f39c3ed46a0d399dbb5')

build() {
  cd ${srcdir}/backgammon
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release ..
  make
}

package() {
  cd ${srcdir}/backgammon/build
  make DESTDIR="${pkgdir}" install
}
