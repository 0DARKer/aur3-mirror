# Maintainer: A Rojas - nqn1976 @ gmail.com

pkgname=kbackgammon
_pkgname=KBackgammon
pkgver=0.15
pkgrel=1
pkgdesc="Backgammon game for KDE"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/KBackgammon?content=142680"
license=('GPL')
depends=('kdebase-runtime' 'kdegames-libkdegames')
makedepends=('cmake' 'automoc4')
source=("http://kde-apps.org/CONTENT/content-files/142680-${_pkgname}_${pkgver}.tar.gz")
md5sums=('60013a179ce2a300c4a5a6c22329c520')

build() {
  cd ${srcdir}/backgammon
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release ..
  make
}

package() {
  cd ${srcdir}/backgammon/build
  make DESTDIR="${pkgdir}" install
}
