# Maintainer: nqn1976 @ gmail.com

pkgname=kbackgammon
_pkgname=KBackgammon
pkgver=0.1
pkgrel=1
pkgdesc="Backgammon game for KDE"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/KBackgammon?content=142680"
license=('GPL')
depends=('kdebase-runtime')
makedepends=('cmake' 'automoc4')
source=("http://kde-apps.org/CONTENT/content-files/142680-${_pkgname}.tar.gz")
md5sums=('51c7d02fb582bff526b322d001f6e63a')

build() {
  cd ${srcdir}/${_pkgname}
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release ..
  make
}

package() {
  cd ${srcdir}/${_pkgname}/build
  make DESTDIR="${pkgdir}" install
}
