pkgname='perl-class-tiny'
pkgver='1.000'
pkgrel='1'
pkgdesc="Minimalist class construction"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/Class-Tiny'
source=('http://search.mcpan.org/CPAN/authors/id/D/DA/DAGOLDEN/Class-Tiny-1.000.tar.gz')
md5sums=('a8acb0d05e384573d3624406813bf6b4')
sha512sums=('e008d7db4086259850e0e02bb4b2dc2786fc1078e2c3c599a03f94a445169b7d15dd3d27721a52a6c47b16c9d066d9c15c16d68c4a83f0b25a512b407704ff6c')
_distdir="Class-Tiny-1.000"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

