# Contributor: Dmitry V. Luciv <dluciv@dluciv.name>
# Maintainer: Dmitry V. Luciv <dluciv@dluciv.name>

pkgname=haxe3-bin
pkgver=3.1.1
pkgrel=1
pkgdesc="HaXe (pronounced as hex) is an open source programming language, multiple backends, mostly web-targeted."
url="http://haxe.org/"
license=('GPL')
arch=("i686" "x86_64")
options=(!strip)

[[ "$CARCH" = "i686" ]]   && depends=("neko>=2.0.0" "glibc" "zlib") && _platform="linux32"
[[ "$CARCH" = "x86_64" ]] && depends=("neko>=2.0.0" "lib32-glibc" "lib32-zlib") && _platform="linux64"

makedepends=()
conflicts=(haxe-bin haxe)

replaces=("haxe")
provides=("haxe=$pkgver.$pkgrel")
source=(
  "http://haxe.org/file/haxe-$pkgver-${_platform}.tar.gz"
)

[[ "$CARCH" = "i686" ]] && md5sums=("54e42afa6c7ac3d4d9af312d5d7f33e0")
[[ "$CARCH" = "x86_64" ]] && md5sums=("57c074d8650a06be44f83b78c1b7bcf5")

build() {
  cd $srcdir
  tar xvzf haxe-${pkgver}-${_platform}.tar.gz
}

package() {
  cd $pkgdir
  mkdir -p usr/bin
  cp $srcdir/build/haxe usr/bin/haxe
  mkdir -p usr/lib/haxe
  cp -r $srcdir/build/std usr/lib/haxe
  cp $srcdir/build/std/tools/haxelib/haxelib usr/bin/haxelib
}
