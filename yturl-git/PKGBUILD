pkgname="yturl-git"
pkgver=20130408
pkgrel=1
pkgdesc="Get direct media URLs to YouTube media"
url="http://github.com/cdown/yturl"
arch=( "any" )
license=( "MIT" )
depends=( "python2" )
conflicts=( "yturl" )
provides=( "yturl" )

_gitname="yturl"
_gitroot="https://github.com/cdown/yturl.git"

package() {
    cd "$srcdir"

    msg "Connecting to Git server..."
    if [ -d "$_gitname" ] ; then
        cd "$_gitname"
        git pull origin
    else
        git clone "$_gitroot" "$_gitname"
    fi
    msg "Git update done."

    install -D -m755 \
        "$srcdir/$_gitname/yturl" \
        "$pkgdir/usr/bin/yturl"
}
