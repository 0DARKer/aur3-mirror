# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=jhdf5
pkgver=10.06.0
pkgrel=2
pkgdesc='An easy-to-use high-level API for HDF5 written in Java.'
arch=('any')
url='https://wiki-bsse.ethz.ch/display/JHDF5/JHDF5+%28HDF5+for+Java%29'
license=('APACHE')
depends=('java-runtime' 'hdf5')
source=("https://wiki-bsse.ethz.ch/download/attachments/26609237/cisd-jhdf5-10.06.0-r16597.zip")
md5sums=('558b3aae3d2bdb0eac0281cba8f20395')

#remove build() once aur supports stand along package()
build() {
  true
}

package() {
  cd cisd-jhdf5

 install -d ${pkgdir}/usr/share/java

  cp -r lib/* ${pkgdir}/usr/share/java

  install -D bin/h5ar.sh ${pkgdir}/usr/bin/h5ar
}
