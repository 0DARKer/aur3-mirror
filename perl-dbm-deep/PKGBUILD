build() {
  cd "$srcdir/DBM-Deep-2.0008"
  PERL_MM_USE_DEFAULT=1 perl Build.PL --installdirs vendor --destdir "$pkgdir"
  perl Build
}

check() {
  cd "$srcdir/DBM-Deep-2.0008"
  perl Build test
}

package() {
  cd "$srcdir/DBM-Deep-2.0008"
  perl Build install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
