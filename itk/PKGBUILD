#Maintainer: Nathan Owe <ndowens04+AUR @ gmail.com>
pkgname=itk
pkgver=3.3
pkgrel=6
pkgdesc="a framework for building mega-widgets using the  [incr Tcl]  object \
system."
url="http://incrtcl.sourceforge.net/itk/"
license=('custom')
arch=('i686' 'x86_64')
depends=('tk' 'itcl')
source=(http://downloads.sourceforge.net/incrtcl/$pkgname$pkgver.tar.gz)
md5sums=('a97c17f3cfa5e377f43073c653c501b5')

build() {
  cd $srcdir/$pkgname$pkgver
  install -d $pkgdir/usr/share/licenses/$pkgname
  ./configure --prefix=/usr
  make  || return 1
  make DESTDIR=$pkgdir/ install
  install -m644 license.terms $pkgdir/usr/share/licenses/$pkgname/
}

