# Contributor: Angelo Theodorou <encelo@users.sourceforge.net>
pkgname=cx_oracle
pkgver=4.4
pkgrel=1
pkgdesc="Python extension module that allows access to Oracle databases"
arch=('i686')
url="http://cx-oracle.sourceforge.net/"
license=('custom')
depends=('python' 'oracle-xe')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/cx_Oracle-$pkgver.tar.gz)
md5sums=('e975503824907056d1ac2b44ab4c1afe')

build() {
  cd $srcdir/cx_Oracle-$pkgver

 ORACLE_HOME=/usr/lib/oracle/xe/app/oracle/product/10.2.0/server \
 python setup.py install --root=$pkgdir || return 1

 # Install License
  install -D -m 644 LICENSE.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE

}
