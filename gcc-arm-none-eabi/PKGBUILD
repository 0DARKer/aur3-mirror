pkgname=gcc-arm-none-eabi
_pkgver_major=4_7
_pkgver_minor=2012q4-20121208
_pkgver_actual=$_pkgver_major-$_pkgver_minor
pkgver=4_7_2012q4_20121208
pkgrel=1
pkgdesc="GNU Tools ARM Embedded Processors (binary distribution, includes GDB and newlib)"
arch=('i686' 'x86_64')
url="https://launchpad.net/gcc-arm-embedded"
source="https://launchpad.net/gcc-arm-embedded/4.7/4.7-2012-q4-major/+download/$pkgname-$_pkgver_actual-linux.tar.bz2"
license=('custom')
options=(!strip)
md5sums=("475c3283253b872bb576020844046cf2")

package() {
	mkdir -p $pkgdir/usr
    cd $srcdir/gcc-*
	cp -a arm-none-eabi bin lib share $pkgdir/usr
}
