pkgname=gcc-arm-none-eabi
_pkgver_major=4_7
_pkgver_minor=2013q1-20130313
_pkgver_actual=$_pkgver_major-$_pkgver_minor
pkgver=4_7_2013q1_20130313
pkgrel=1
pkgdesc="GNU Tools ARM Embedded Processors (binary distribution, includes GDB and newlib)"
arch=('i686' 'x86_64')
url="https://launchpad.net/gcc-arm-embedded"
source="https://launchpad.net/gcc-arm-embedded/4.7/4.7-2013-q1-update/+download/$pkgname-$_pkgver_actual-linux.tar.bz2"
license=('custom')
options=(!strip)
md5sums=("bcf845e5cd0608a0d56825d8763cba77")

package() {
    mkdir -p $pkgdir/usr
    cd $srcdir/gcc-*
    cp -a arm-none-eabi bin lib share $pkgdir/usr
}
