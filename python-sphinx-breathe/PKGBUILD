pkgname=python-sphinx-breathe
_gitroot=https://github.com/michaeljones/breathe.git
pkgver=20110625
pkgrel=1
arch=('i686' 'x86_64')
url="https://github.com/michaeljones/breathe"
pkgdesc="Sphinx extension, a reST/Sphinx bridge to doxygen."
depends=('python-sphinx' 'doxygen')
license=('BSD')
_gitname="${srcdir}/breathe"
source=(setup.py)

build() {
	cd ${srcdir}
	rm -rf "${_gitname}"
	git clone ${_gitroot} --depth=1
	cd ${_gitname}
	make
}

package(){
	python "${srcdir}/setup.py" "${pkgdir}" "${srcdir}/breathe"
}
md5sums=('febe284c7285b74b4bfcd880b021be41')
