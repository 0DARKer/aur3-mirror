# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>pkgname=ruby-rack110
pkgname=ruby-tilt
pkgver=1.1
pkgrel=1
pkgdesc="Generic interface to multiple Ruby template engines"
arch=(any)
url="http://github.com/rtomayko/tilt/"
license=('MIT')
depends=('ruby')
source=(http://gems.rubyforge.org/gems/tilt-$pkgver.gem)
noextract=(tilt-$pkgver.gem)
md5sums=('ee22195dbccb2a3ffed0755d80e2e79a')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" tilt-$pkgver.gem
  
  mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
