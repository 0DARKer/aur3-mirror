# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>

pkgname=fortune-mod-iasip
pkgver=0.1
pkgrel=2.1
pkgdesc="It's Always Sunny In Philadelphia fortune cookies"
url="http://dl.dropbox.com/u/14015956/fortune-mod/fortune-mod-iasip"
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname-$pkgver.tar.xz)
md5sums=('79ba4a6bb14b21539d71f7f0da469b22')

build() {
    mkdir $srcdir/$pkgname-$pkgver/
    xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
    mv -i $srcdir/iasip $srcdir/$pkgname-$pkgver/
    strfile $srcdir/$pkgname-$pkgver/iasip
    install -d $pkgdir/usr/share/fortune || return 1
    install -m 644 $srcdir/$pkgname-$pkgver/iasip* $pkgdir/usr/share/fortune \
    || return 1
}

