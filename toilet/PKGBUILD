# Contributor: bl4ckb1t <bl4ckb1t@gmail.com>
pkgname=toilet
pkgver=0.2
pkgrel=2
pkgdesc="free replacement for the FIGlet utility."
arch=('i686' 'x86_64')
url="http://libcaca.zoy.org/wiki/toilet"
license=('WTFPL')
depends=('libcaca' 'zlib' 'glibc')
source=(http://libcaca.zoy.org/files/toilet/$pkgname-$pkgver.tar.gz)
md5sums=('4dec7585a2a2d716a765d553cdc1ddaf')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr LDFLAGS="-Wl,--no-as-needed"
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -Dm644 COPYING ${startdir}/pkg/usr/share/licenses/${pkgname}/COPYING
}
