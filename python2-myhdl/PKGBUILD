pkgname=python2-myhdl
pkgver=0.8
pkgrel=1
pkgdesc="Python Micro Controller Wrapper"
depends=('python2')
arch=('any')
url="http://www.myhdl.org"
provides=('myhdl' 'python-myhdl')
license=('LGPL')
source=("http://sourceforge.net/projects/myhdl/files/myhdl/${pkgver}/myhdl-${pkgver}.tar.gz")
build() {
  PYTHON=python2
  cd "${srcdir}/myhdl-${pkgver}"
  $PYTHON setup.py install --root "${pkgdir}"
}
sha256sums=('2b76fce9d9c75c2daf0bfded57d9ff17ee657df3587dda56cb7f60081403a39b')
