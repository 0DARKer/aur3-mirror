# Maintainer: Arkham <arkham at archlinux dot us>
# Contributor: marlok <marlock87 at hotmail dot com>

pkgname=gnome-doc-utils-dev
_realname=gnome-doc-utils
_mainver=0.17
pkgver=0.17.5
pkgrel=1
pkgdesc="Documentation utilities for Gnome"
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL' 'LGPL')
depends=('libxslt>=1.1.24' 'python>=2.6' 'docbook-xml' 'rarian>=0.8.1')
makedepends=('pkgconfig' 'intltool')
conflicts=('gnome-doc-utils')
provides=('gnome-doc-utils')
source=(http://ftp.gnome.org/pub/gnome/sources/${_realname}/${_mainver}/${_realname}-${pkgver}.tar.bz2)
md5sums=('74060b2e8c35ee1ee4b5b15469afc681')

build() {
    cd "${srcdir}/${_realname}-${pkgver}"
    ./configure --prefix=/usr --sysconfdir=/etc --mandir=/usr/share/man \
    --localstatedir=/var --disable-scrollkeeper || return 1
    make || return 1
    make DESTDIR="${pkgdir}" install || return 1
}
