pkgname=obmenu3
pkgver=1.01
pkgrel=2
pkgdesc="Openbox menu editor - replacement of obmenu"
url="http://sourceforge.net/projects/obmenu3"
license=('GPL')
depends=('gtk2')
makedepends=('')
arch=('i686' 'x86_64')
source=(http://sourceforge.net/projects/obmenu3/files/$pkgver/obmenu3-$pkgver-$CARCH.tgz)
if [[ $CARCH == 'i686' ]]; then
  md5sums=('e5e35839d1aa2502619ce5fd479fe026')
else
  md5sums=('a77eb9e1d58f68f4acb6ee7580b179a5')
fi
package() {
  cp -R "$srcdir/usr" "$pkgdir"
}
