# Contributor: Leonid Selivanov <bravebug at gmail dot com>

pkgname=python-configglue
pkgver=0.9.1
pkgrel=1
pkgdesc="Python library that glues together python's optparse."
arch=('i686' 'x86_64')
url="https://launchpad.net/configglue"
license=('BSD')
groups=()
depends=('python2')
makedepends=('setuptools')
optdepends=()
provides=('python-configglue=$pkgver')
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(http://launchpad.net/configglue/trunk/$pkgver/+download/configglue-$pkgver.tar.gz)
noextract=()
md5sums=('2a4e68ff90c987c1c594ac5859ff47ec')

build() {
  cd $srcdir/configglue-${pkgver}
  python2 setup.py install --root=$pkgdir/
}