# Maintainer: David Verelst <david dot verelst at gmail com>
# Contributor: richli
pkgname=python2-shapely
pkgver=1.3.1
pkgrel=1
pkgdesc="Manipulation and analysis of geometric objects in the Cartesian plane"
arch=('i686' 'x86_64')
url="https://pypi.python.org/pypi/Shapely"
license=('BSD')
depends=('python2>=2.6' 'geos>=3.1')
source=("https://pypi.python.org/packages/source/S/Shapely/Shapely-${pkgver}.tar.gz")
md5sums=('5ac028637fbd52b9752994bdbfd9446c')
#sha1sums=('741102e46415234f61c841d76ccae6aa32898ce5')
#sha256sums=('297df004aec27e38ed93987e93ff5f8187cd0299394fe8b0b9028566015a9bb5')
 
package() {
  cd "$srcdir"/Shapely-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
 
  # replace any python occurances with python2
  sed -i -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
    $(find "${pkgdir}" -name '*.py')
 
  install -Dm644 LICENSE.txt "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
 
