# Maintainer: IgnorantGuru <ignorantguru@gmx.com>
pkgname=devmon
pkgver=20120315
pkgrel=1
pkgdesc="Automounts and unmounts optical and removable drives using udisks 1.0"
arch=(any)
license=('GPL3')
depends=('udisks<1.9' 'bash>=4')
optdepends=('consolekit: handles udisks polkit permissions' 'zenity: pop-up dialogs')
url=("http://igurublog.wordpress.com/downloads/script-$pkgname/")
source=()
md5sums=()

_gitroot="git://github.com/IgnorantGuru/devmon.git"
_gitname="devmon"

build() {
    cd "$srcdir"
    msg "Connecting to GIT server...."

    if [ -d $_gitname ] ; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone --depth=1 $_gitroot $_gitname
    fi
    msg "GIT checkout done or server timeout"
    
    msg "Installing..."
    install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
}

package() {
    install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
}

