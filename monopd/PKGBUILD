pkgname=monopd
pkgver=0.9.3
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="monopd is a dedicated game server daemon for playing Monopoly-like board games."
url="http://www.robertjohnkaper.com/software/atlantik/"
license=('GPL')
depends=('libcapsinetwork' 'libmath++')
source=(gcc4.3.patch \
  http://www.robertjohnkaper.com/downloads/atlantik/$pkgname-$pkgver.tar.bz2)
md5sums=('4aaadb534ce40348f77c63ce61e73fab' 'd0c4876bb24e8c961012a8ef4894fe2d')

build() {
  cd $srcdir
  find . -type f -exec chmod  644 {} \;
  find . -type d -exec chmod  755 {} \;
  find . -type f -name configure -exec chmod  755 {} \;

  cd $srcdir/$pkgname-$pkgver
  patch -p1 < ../gcc4.3.patch || return 1
  ./configure --prefix=/usr --sysconfdir=/etc/$pkgname || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
