# Contributor: Gilles Bedel <you.re.a.bot_gillou.ray@free.fr>
pkgname=animecheck-git
pkgver=r15.39d0246
pkgrel=2
pkgdesc="Anime CRC32 checker"
arch=(any)
url="http://agafix.org/anime-crc32-checksum-in-linux-v20/"
license=('GPL3')
depends=(python)
makedepends=('git')
source=("$pkgname"::git+https://github.com/taoufix/tools.git
        bugfix.patch)
md5sums=('SKIP'
         'e58de4f9dfbd0a26740e65150f16e0ce')

pkgver() {
  cd "$srcdir/$pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd "$srcdir/$pkgname"
  patch -p0 < ../bugfix.patch
}

package() {
  cd "$srcdir/$pkgname"
  install -D animecheck "$pkgdir/usr/bin/animecheck"
} 
