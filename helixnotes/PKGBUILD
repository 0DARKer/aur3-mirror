pkgname=helixnotes
_pkgname=helix
pkgver=0.2
pkgrel=1
pkgdesc="A lightweight GTK note taker written in Python"
arch=('i686' 'x86_64')
url="http://www.gtk-apps.org/content/show.php/Helix+Notes?content=112271"
license=('GPL3')
depends=('python' 'pygtk')
install=helixnotes.install
source=(http://www.gtk-apps.org/CONTENT/content-files/112271-${_pkgname}.tar.gz)
md5sums=('af5d561ca964d86c27b433d81213a885')

build() {
  cd $srcdir/${_pkgname}
  python setup.py install --root=$pkgdir
}
