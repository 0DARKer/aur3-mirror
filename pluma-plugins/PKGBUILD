pkgname=pluma-plugins
pkgver=1.4.0
pkgrel=1
arch=('i686' 'x86_64')
url="https://github.com/cygwinports/mate-text-editor-plugins/"
license=('GPL')
depends=('pluma' 'mate-common')

pkghash=448886e1adfad7f7c3ead86a417ff9426e5754ce
reponame=mate-text-editor-plugins

source=(https://github.com/cygwinports/${reponame}/archive/${pkghash}.zip)
md5sums=('c25ab74e4c6b447b73d1529c49c96530')


build() {
  cd $startdir/src/${reponame}-${pkghash}
  PYTHON=/usr/bin/python2 ./autogen.sh \
    --prefix=/usr \
    --with-plugins=all \
    --libexecdir=/usr/lib/${pkgname} \
    --with-gtk=2.0 \
    --enable-gtk-doc \
    --enable-python \
    || return 1
  make || return 1
}

package() {
  cd $startdir/src/${reponame}-${pkghash}
  make DESTDIR="${startdir}/pkg/${pkgname}" install || return 1
}
