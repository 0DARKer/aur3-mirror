# Maintainer: Ner0

pkgname=cinnamon-extension-coverflow-alt-tab
pkgver=1.3
pkgrel=1
pkgdesc="CoverflowAltTab let's you Alt-Tab through your windows in a cover-flow manner."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/extensions/view/3"
license=('GPL3')
depends=('cinnamon')
source=("http://cinnamon-spices.linuxmint.com/uploads/extensions/PX45-ZLYV-RG0O.zip")
md5sums=('1ac9fecaafa5fd60e89a119377990aec')

package() {
  find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/cinnamon/extensions/{}" \;

  sed -i 's/"shell-version".*/"cinnamon-version": ["1.2.0", "1.3.0", "1.3.1", "1.4"],/' \
  "$pkgdir/usr/share/cinnamon/extensions/CoverflowAltTab@dmo60.de/metadata.json"
}
