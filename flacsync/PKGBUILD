# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: intel <intel@ss4200>
pkgname=flacsync  
pkgver=0.3.1
pkgrel=1 
pkgdesc="Recursively mirror a directory tree of FLAC audio files to AAC/OGG"
url="http://code.google.com/p/flacsync/"
arch=('any')
license=('GPL')
depends=('python' 'python-imaging' 'flac')
optdepends=('neroaacenc: AAC encoding'
            'neroaactag: AAC Tagging'
            'vorbis-tools: Vorbis encoding and tagging'
)
source=(http://flacsync.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('3bd11efc1477543240dde6c83b40cc33')
build() {
  cd $srcdir/$pkgname-$pkgver
  python setup.py install --root=$pkgdir/ --optimize=1
}