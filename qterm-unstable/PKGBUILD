pkgname=qterm-unstable
pkgver=0.5.11
pkgrel=1
pkgdesc="BBS client for Linux, written in Qt"
depends=('qt>=4.5.0' 'openssl')
optdepends=('phonon')
makedepends=('cmake')
url="http://sourceforge.net/projects/qterm/"
arch=('i686' 'x86_64')
conflicts=('qterm')
replaces=('qterm')
license=('GPL')
source=(http://prdownloads.sourceforge.net/qterm/qterm-$pkgver.tar.bz2)

build() {
	cd $startdir/src/qterm-$pkgver
	cmake -D CMAKE_INSTALL_PREFIX=/usr -D QT_PHONON_INCLUDE_DIR=/usr/include/KDE . || return 1
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}

md5sums=('7f6e82c611d6ee16f0f43696626fb549')
