# Maintainer: Zatherz <zatherz[at]linux[dot]com>
pkgname=libasciimap-git
pkgver=r0.g23bf4da
pkgrel=1
pkgdesc="Silly library for displaying silly fancy ASCII art (with example reader, asciimap-test)."
url="http://github.com/Zatherz/libasciimap/"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=()
makedepends=('git')
source=("git://github.com/Zatherz/libasciimap")
md5sums=("SKIP")

pkgver() {
  cd "libasciimap"
  git describe --long --all | sed -r 's/([^-]*-g)/r\1/;s/-/./g;s/heads\/master.//g'
}

build() {
  cd "libasciimap"
  make
}

package() {
  cd "libasciimap"
  make DESTDIR="$pkgdir" install
}
