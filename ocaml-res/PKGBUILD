# Contributor: Guillem Rieu <guillemr@gmx.net>
pkgname=ocaml-res
pkgver=3.2.0
pkgrel=2
pkgdesc="Library for automatically resizing contiguous memory (arrays and strings)"
arch=(i686 x86_64)
url="http://www.ocaml.info/home/ocaml_sources.html"
license=('LGPL')
depends=('ocaml' 'ocaml-findlib')
source=(http://hg.ocaml.info/release/res/archive/release-$pkgver.tar.gz)
options=('!strip')
md5sums=('087463c0c21a8260ab5c8f3d6ea1333c')

build() {
  cd "$srcdir/res-release-$pkgver"

  make || return 1
}

package(){
  cd "$srcdir/res-release-$pkgver"

  mkdir -p "$pkgdir/$(ocamlfind printconf destdir)"
  env DESTDIR="$pkgdir" \
      OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)" \
      make install
}

# vim:set ts=2 sw=2 et:
