# Maintainer: Sergei Lebedev <superbobry@gmail.com>
# Contributor: Guillem Rieu <guillemr@gmx.net>
pkgname=ocaml-res
pkgver=3.2.0
pkgrel=3
pkgdesc="Library for automatically resizing contiguous memory (arrays and strings)"
arch=('i686' 'x86_64')
url="http://www.ocaml.info/home/ocaml_sources.html"
license=('LGPL')
depends=('ocaml')
makedepends=('ocaml-findlib')
source=(http://hg.ocaml.info/release/res/archive/release-$pkgver.tar.gz)
md5sums=('8fda014a3c960490caae95d7be5ba106')
options=('!strip')

build() {
  cd "$srcdir/res-release-$pkgver"

  make || return 1
}

package(){
  cd "$srcdir/res-release-$pkgver"

  export OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)"

  mkdir -p $OCAMLFIND_DESTDIR
  make install || return 1
}
