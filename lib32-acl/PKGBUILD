pkgname=lib32-acl
pkgname32=${pkgname/lib32-/}
pkgver=2.2.49
pkgrel=1
_pkgrel32=1
pkgdesc="Library for filesystem ACL support"
arch=('x86_64')
depends=()
makedepends=()
url=(http://oss.sgi.com/projects/xfs/)
groups=lib32
license=('GPL')
source=(ftp://ftp.archlinux.org/core/os/i686/$pkgname32-$pkgver-$_pkgrel32-i686.pkg.tar.xz)
md5sums=('213a1f15ada7965d148ae6c3d088faa1')

build() {
  mkdir -p $startdir/pkg/opt/lib32/lib/
  mkdir -p $startdir/pkg/opt/lib32/usr/lib/
  cp -R $startdir/src/lib/*.so* $startdir/pkg/opt/lib32/lib/
  cp -R $startdir/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib/
}
