# Comments: 
# Binary version available from: http://www.quadronyx.org/aur/
##

pkgname=wmtimer
pkgver=2.4
pkgrel=2
pkgdesc="WMTimer is a dockable WindowMaker app (docklet) alarm clock for which can be run in alarm, countdown timer, or chronograph mode."
# The original site, seems to be gone
# url="http://www.darkops.net/wmtimer/"
url="http://dockapps.org/file.php/id/23" 
arch=("i686")
license=("GPL")
depends=( \
	'gtk' \
	'libxpm' \
	)
source=( \
	http://dockapps.org/download.php/id/37/${pkgname}-${pkgver}.tar.gz \
	)
md5sums=( \
	'563ff8c7a7c880a0babf16e4ad972f94' \
	)

build() {
	cd $startdir/src/$pkgname-$pkgver/$pkgname

	make || exit 1

	install -D -m755 ${pkgname} ${startdir}/pkg/usr/bin/${pkgname}
}
