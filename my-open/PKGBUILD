# Maintainer: Alexander Rødseth <rodseth@gmail.com>
pkgname=my-open
pkgver=0.2
pkgrel=2
pkgdesc="A really quick and dirty replacement for xdg-open"
arch=('x86_64' 'i686')
url="http://roboticoverlords.org/files/"
license=('BSD')
depends=('eog' 'evince' 'file-roller' 'deluge')
makedepends=('go')
source=("http://roboticoverlords.org/files/$pkgname-$pkgver.tgz")
md5sums=('6ac2c0f0317e6825450743972a63514e')
options=(!strip)
build() {
  cd "$srcdir/$pkgname-$pkgver"
  GOROOT=/usr/lib/go make
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/xdg-open"
  head -1 $pkgname.go > LICENSE
  install -Dm644 LICENSE \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
# vim:set ts=2 sw=2 et:
