# Maintainer: ngukho <ngukho at gmail dot com>
pkgname=liblbfgs
pkgver=1.9
pkgrel=1
pkgdesc="A C port of the implementation of Limited-memory Broyden-Fletcher-Goldfarb-Shanno (L-BFGS) method written by Jorge Nocedal."
arch=('i686' 'x86_64')
url="http://www.chokkan.org/software/liblbfgs/"
license=('custom:MIT')
source=("http://www.chokkan.org/software/dist/$pkgname-$pkgver.tar.gz")
md5sums=('311eb920dd3ed777c3fae14e4ae7c9a5') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr 
  make || return 1
  make DESTDIR="$pkgdir/" install

  install -D -m644 COPYING ${pkgdir}/usr/share/licenses/liblbfgs/COPYING
}

# vim:set ts=2 sw=2 et:
