pkgname=lpc21isp
pkgver=1.85
pkgrel=1
pkgdesc="In-circuit programming (ISP) tool for the NXP (Philips) LPC1300 / LPC1700 / LPC2000 series ARM7 / M0 / M3 microcontrollers"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/lpc21isp/"
license=('LGPLv3')
depends=()
makedepends=()
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/${pkgname}_185.tar.gz)
sha256sums=('b85f10265fa83cdaab5b975e7bd53bb47289f1207b45e99cd753ea7a75fb7088')

build() {
  cd "$srcdir"
  
  make
}

package() {
  cd "$srcdir"
  
  install -d "$pkgdir/usr/bin"
  install -m755 lpc21isp "$pkgdir/usr/bin"
}

