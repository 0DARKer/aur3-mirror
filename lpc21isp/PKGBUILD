pkgname=lpc21isp
pkgver=1.79
pkgrel=1
pkgdesc="In-circuit programming (ISP) tool for the NXP (Philips) LPC1300 / LPC1700 / LPC2000 series ARM7 / M0 / M3 microcontrollers"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/lpc21isp/"
license=('LGPLv3')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://downloads.sourceforge.net/project/lpc21isp/lpc21isp/$pkgver/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('93cf6b2a35d7e1d96a2887a21a8b2b77')

build() {
  cd "$srcdir/$pkgname"

  make || return 1
  install -d "$pkgdir/usr/bin"
  install -m755 lpc21isp "$pkgdir/usr/bin"
}

