# Maintainer: Florian Schweikert <kelvan@ist-total.org>
pkgname=pyotherside
pkgver=1.1.0
pkgrel=1
pkgdesc="Asynchronous Python 3 Bindings for Qt 5"
arch=(arm x86 x86_64)
url="http://thp.io/2011/pyotherside"
license=('ISC')
depends=(qt5-base python)
makedepends=(qt5-base python)
source=(http://thp.io/2011/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('eb72ed90d76b53c6f63dc71675021d74')

build() {
  cd $pkgname-$pkgver

  qmake
  make
}

package() {
  cd $pkgname-$pkgver

  make INSTALL_ROOT="$pkgdir/" install
}
