# Maintainer: Florian Schweikert <kelvan@ist-total.org>
pkgname=pyotherside
pkgver=1.0.0
pkgrel=9
pkgdesc="Asynchronous Python 3 Bindings for Qt 5"
arch=(arm x86 x86_64)
url="http://thp.io/2011/pyotherside"
license=('ISC')
depends=(qt5-base python)
makedepends=(qt5-base python)
source=(https://github.com/thp/$pkgname/archive/packaging/$pkgver-$pkgrel.tar.gz)
md5sums=('4177993e8d1627694f00011dd7b5b46c')

build() {
  cd $pkgname-packaging-$pkgver-$pkgrel

  qmake
  make
}

package() {
  cd $pkgname-packaging-$pkgver-$pkgrel

  make INSTALL_ROOT="$pkgdir/" install
}
