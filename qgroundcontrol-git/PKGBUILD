# Maintainer: Milan Oberkirch <aur@oberkirch.org>
pkgname=qgroundcontrol-git
pkgver=2.0.3
pkgrel=0
pkgdesc="Micro air vehicle ground control station."
arch=('any')
url="http://qgroundcontrol.org/"
license=('GPL3')
# espeak is optional but must always be present if it was at built-time
depends=('espeak' 'qt4' 'qtwebkit' 'phonon-qt4')
makedepends=('git')
md5sums=() #generate with 'makepkg -g'

_gitroot="git@github.com:mavlink/qgroundcontrol.git"
_gitname=qgroundcontrol

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

## Comment the following lines out to enable QUpgrade
#  cd "$srcdir/$_gitname-build"
#  git submodule init
#  git submodule update

  cd "$srcdir/qgroundcontrol"
  qmake-qt4
  make
}

package() {
  mkdir -p "${pkgdir}/opt" "${pkgdir}/usr/bin"
  cp -R "$srcdir/qgroundcontrol/release" "${pkgdir}/opt/qgroundcontrol"
  cat <<EndOfFile > "${pkgdir}/usr/bin/qgroundcontrol"
#!/bin/bash
cd /opt/qgroundcontrol/
exec ./qgroundcontrol
EndOfFile
  chmod +x "${pkgdir}/usr/bin/qgroundcontrol"
}

# vim:set ts=2 sw=2 et:
