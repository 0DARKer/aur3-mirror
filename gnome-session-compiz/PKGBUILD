# Maintainer: Shanto <shanto@hotmail.com>
pkgname=gnome-session-compiz
pkgver=3.0
pkgrel=1
pkgdesc="Additional session definition and GDM menu entry for starting GNOME 3 with Compiz (Window Manager) and Cairo-Dock (Taskbar/Panel). No forced fallback mode is necessary. "
arch=('any')
url="http://www.compiz.org/"
license=('GPL')
groups=('gnome-extra')
depends=('gnome-session' 'gdm' 'compiz-core' 'cairo-dock')
#install=$pkgname.install
source=('gnome-compiz.session'
	'gnome-compiz.desktop'
	'compiz.desktop')
package() {
	cd "$srcdir"
	install -m755 -d "$pkgdir"/usr/share/{gnome-session/sessions,xsessions,applications}/
	install -m644 gnome-compiz.session "$pkgdir"/usr/share/gnome-session/sessions/
	install -m644 gnome-compiz.desktop "$pkgdir"/usr/share/xsessions/
	install -m644 compiz.desktop "$pkgdir"/usr/share/applications/
}
md5sums=('1646ebb0db8378bbea6893e540bc78f7'
         '606150a99fb591edf9472fe425764828'
         '0af19bba74bd732a04aa47115b016888')
