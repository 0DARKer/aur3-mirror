
pkgname=pyparticles
pkgver=0.3.3
pkgrel=1
pkgdesc="Particles simulation toolbox for python, with some force model and integrations methods"
arch=(any)
license=('GPL3')
url="http://pyparticles.wordpress.com/"
depends=('python2'  'python2-opengl' 'python2-scipy' 'python2-numpy' 'python2-matplotlib' )


source=("https://github.com/downloads/simon-r/PyParticles/pyparticles-${pkgver}.tar.gz")
sha1sums=('480a0fc20cf95dd89ec8402c34b0b50f83cb561c')

build() {
  cd "$srcdir/${pkgname}-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/${pkgname}-$pkgver"
  echo ${pkgdir}
  python2 setup.py install --root=${pkgdir} --prefix=usr --optimize=1
}
