pkgname=textflow
pkgver=0.2.9
pkgrel=1
pkgdesc="A text editor oriented for programming and written in PyGTK"
arch=('any')
license=('GPL2')
url="http://launchpad.net/textflow"
depends=('gnome-python' 'pygtk' 'pygtksourceview2' 'gnome-python-desktop' 'libwnck')
options=(!strip)
source=("http://www.textflowproject.org/wp-content/uploads/2009/07/${pkgname}_${pkgver}.tar.gz")
md5sums=('012d37b6b14932ef33de33db367da1b3')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -m0755 -d ${pkgdir}/usr
  python setup.py install --root=${pkgdir}/ || return 1
}
