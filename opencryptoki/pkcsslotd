#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

DAEMON='pkcsslotd'
CONFSTART=/usr/sbin/pkcs11_startup
SLOTDBIN=/usr/sbin/pkcsslotd
PID=`pidof -o %PPID ${SLOTDBIN}`

case "$1" in

  start)
    stat_busy "Starting ${DAEMON}"
    if [ -z "$PID" ]; then
      $CONFSTART
      $SLOTDBIN
    fi
    if [ ! -z "$PID" -o $? -gt 0 ]; then
      stat_fail
    else
      add_daemon ${DAEMON}
      stat_done
    fi
    ;;

  stop)
    stat_busy "Stopping ${DAEMON}"
      [ ! -z "$PID" ] && kill $PID &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon ${DAEMON}
      stat_done
    fi
    ;;

  restart)
    $0 stop
    $0 start
    ;;

  *)
    echo "usage: $0 {start|stop|restart}"

esac
exit 0
