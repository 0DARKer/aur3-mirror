pkgname=libmediawiki-git
_gitname=libmediawiki
pkgver=ac2cf47
pkgrel=1
pkgdesc='libmediawiki is a KDE C++ interface for MediaWiki'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('kdelibs')
makedepends=('git' 'automoc4' 'cmake')
conflicts=('libmediawiki')
provides=('libmediawiki')
groups=('kde-git' 'digikam-git')
source=('git://anongit.kde.org/libmediawiki')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $srcdir
  
  msg "GIT checkout done"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi
  mkdir $srcdir/build
  cd $srcdir/build
  cmake $srcdir/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}