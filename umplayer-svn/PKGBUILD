# Maintainer: grimi <grimi poczta dot fm>
pkgname=umplayer-svn
pkgver=181
pkgrel=2
pkgdesc="UMPlayer is the multimedia player that fills all your needs."
arch=('i686' 'x86_64')
url="http://www.umplayer.com"
license=('GPL')
depends=('qt>=4.3' 'mplayer' 'xdg-utils')
provides=('umplayer')
conflicts=('umplayer')
install=$pkgname.install
source=("umplayer-${pkgver}.tar.gz::http://umplayer.svn.sourceforge.net/viewvc/umplayer/?view=tar&pathrev=${pkgver}")
md5sums=('c76fd4f25c6dc0bbd786b593697ab9ea')


build() {
  cd umplayer/umplayer/trunk
  make PREFIX=/usr
}

package() {
  cd umplayer/umplayer/trunk
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
