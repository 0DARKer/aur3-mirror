pkgname=ocaml-fileutils
pkgver=0.4.3
pkgrel=1
pkgdesc="A library to provide pure OCaml functions to manipulate real file and filename."
arch=('i686' 'x86_64')
url="http://forge.ocamlcore.org/projects/ocaml-fileutils"
license=('LGPL')
depends=('ocaml')
makedepends=('ocaml-findlib' 'ocaml-ounit')
changelog=$pkgname.changelog
source=(http://forge.ocamlcore.org/frs/download.php/625/$pkgname-$pkgver.tar.gz)
sha256sums=('b985c1449e29d1c9369359cd60950a505fe61a36466dcfc27b1c444d61773827')

build() {
    cd "$srcdir/$pkgname-$pkgver"

    ocaml setup.ml -configure --prefix /usr --destdir $pkgdir
    ocaml setup.ml -build
}

package() {
    cd "$srcdir/$pkgname-$pkgver"

    export OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)"

    mkdir -p $OCAMLFIND_DESTDIR
    ocaml setup.ml -install
}
