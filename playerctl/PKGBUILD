# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=playerctl
pkgver=0.4.1
pkgrel=1
epoch=
pkgdesc="mpris media player controller and lib for spotify, vlc, audacious, bmp, xmms2, and others."
arch=('i686' 'x86_64')
url="https://github.com/acrisci/playerctl"
license=('LGPL3')
groups=()
depends=('glib2')
makedepends=()
checkdepends=()
optdepends=('gobject-introspection' 'python-gobject')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/acrisci/playerctl/releases/download/v${pkgver}/playerctl-${pkgver}.tar.gz")
noextract=()
md5sums=("b353013dfcc73cf48324a1488e36d95b")

build() {
    cd "$srcdir/playerctl-$pkgver"
    ./configure --prefix=/usr
    make -j1
}

package() {
    cd "$srcdir/playerctl-$pkgver"
	make DESTDIR="$pkgdir/" install
}
