# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=playerctl
pkgver=0.4.0
pkgrel=1
epoch=
pkgdesc="mpris media player controller and lib for spotify, vlc, audacious, bmp, xmms2, mplayer, and others."
arch=('i686' 'x86_64')
url="https://github.com/acrisci/playerctl"
license=('LGPL3')
groups=()
depends=('glib2')
makedepends=()
checkdepends=()
optdepends=('gobject-introspection' 'python-gobject')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/acrisci/playerctl/releases/download/v${pkgver}/playerctl-${pkgver}.tar.gz")
noextract=()
md5sums=("ca54a892c5a589e76a6fe8363da314a7")

build() {
    cd "$srcdir/playerctl-$pkgver"
    ./configure --prefix=/usr
    make
}

package() {
    cd "$srcdir/playerctl-$pkgver"
	make DESTDIR="$pkgdir/" install
}
