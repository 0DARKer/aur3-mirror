# Contributor: Matthew Bauer <mjbauer95@gmail.com>

os=linux
origpkgformat=tar
origpkgcompress=gz

pkgname=granola
pkgver=3.0.1
pkgrel=1
pkgdesc="Granola makes computers more energy efficient without slowing them down. Granola is safe, easy to use, and allows your computer to operate as efficiently as possible without sacrificing performance when it's needed most. Help save the world with Granola. (Core)"
arch=('i686' 'x86_64')
url="http://grano.la/"
license=('custom')
depends=()
makedepends=()
optdepends=()
install=granola.install

md5sums=('819b7aeb1073977bc9556ee5877b5081')

if [ $CARCH = i686 ]
then
  origarch=i386
  md5sums=($md5sums '532deecdd2ccb0360f0f8130b6a22e46')
elif [ $CARCH = x86_64 ]
then
  origarch=x86_64
  md5sums=($md5sums '4298e16d54e373c83f5f2c7e22530603')
fi

source=('rc.sh' "https://download.miserware.com/$os/$origpkgformat/$origarch/${pkgname}-${pkgver}-${origarch}.${origpkgformat}.${origpkgcompress}")

build() {
  cd "$srcdir/$pkgname-$pkgver-$origarch"

  cp -r usr etc var $pkgdir

  cd $srcdir

  # for arch format conversion
  rm -r $pkgdir/etc/init.d
  mkdir -p $pkgdir/etc/rc.d
  cp rc.sh $pkgdir/etc/rc.d/$pkgname
  chmod +x $pkgdir/etc/rc.d/$pkgname
}

# vim:set ts=2 sw=2 et:
