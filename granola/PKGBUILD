# Contributor: Matthew Bauer <mjbauer95@gmail.com>

_os=linux
_origpkgformat=tar
_origpkgcompress=gz

pkgname=granola
pkgver=3.3.1
pkgrel=3
pkgdesc="Granola makes computers more energy efficient without slowing them down. Granola is safe, easy to use, and allows your computer to operate as efficiently as possible without sacrificing performance when it's needed most. Help save the world with Granola. (Core)"
arch=('i686' 'x86_64')
url="http://grano.la/"
license=('custom')
depends=()
makedepends=()
optdepends=()
install=granola.install

if [ $CARCH = i686 ]
then
  _origarch=i386
else
  _origarch=$CARCH
fi

source=('rc.sh' "https://download.miserware.com/$_os/$_origpkgformat/$_origarch/${pkgname}-${pkgver}-${_origarch}.${_origpkgformat}.${_origpkgcompress}")

_rc_md5='819b7aeb1073977bc9556ee5877b5081'

case $CARCH in
  x86_64) md5sums=($_rc_md5 'd93f76645dfbb6c5c191417482cca0f3');;
  i686) md5sums=($_rc_md5 '247b3aef56ef79d6d4dc299f67c6bd8a');;
esac

build() {
  cd "$srcdir/$pkgname-$pkgver-$_origarch"

  cp -r usr etc var $pkgdir

  cd $srcdir

  # for arch format conversion
  rm -r $pkgdir/etc/init.d
  mkdir -p $pkgdir/etc/rc.d
  install -m755 rc.sh $pkgdir/etc/rc.d/$pkgname
}

# vim:set ts=2 sw=2 et:
