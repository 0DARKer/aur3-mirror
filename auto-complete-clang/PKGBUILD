# Maintainer: abf <zouxiaoming@gmail.com>

pkgname=auto-complete-clang
pkgver=20110306
pkgrel=1
pkgdesc="A plugin for emacs that use clang to auto-complete.."
arch=('any')
url="https://github.com/mikeandmore/auto-complete-clang"
license=('GPL')
install=$pkgname.install
depends=('auto-complete')
optdepends=('emacs')
makedepends=('git')

_gitroot=git://github.com/mikeandmore/auto-complete-clang.git
_gitname=auto-complete-clang

package() {
  cd "$srcdir"
  msg "Connecting to github.com"
  if [ -d "$startdir/src/$_gitname" ] ;then
	  cd "$_gitname" && git pull origin
	  msg "The local files are updated."
  else
	  git clone "$_gitroot"
  fi
  msg "GIT checkout done or server timeout"
  cd "$srcdir/$_gitname"
  git checkout master
  mkdir -p $pkgdir/usr/share/emacs/site-lisp/
  cp -rp auto-complete-clang.el $pkgdir/usr/share/emacs/site-lisp
  cp -rp sample-config.el $pkgdir/usr/share/emacs/site-lisp/auto-complete-clang_sample-config.el
}

# vim:set ts=2 sw=2 et:
