pkgname=xqf
pkgver=1.0.6.2
pkgrel=1
pkgdesc="A Quake/Quake World/Quake2/Quake3 server browser and launcher for X11"
arch=('i686' 'x86_64')
url="http://www.linuxgames.com/xqf/"
license=('GPL')
depends=('gtk2' 'qstat' 'geoip')
makedepends=('perl-xml-parser')
source=(https://github.com/XQF/xqf/archive/xqf-$pkgver.tar.gz)

build() {
    cd "$pkgname-$pkgname-$pkgver"
    ./autogen.sh 
    ./configure --prefix=/usr \
      --mandir=/usr/share/man \
      --enable-geoip
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
    cd "$pkgdir/usr" && rmdir -p "libexec/xqf"
}

md5sums=('fc7b7c6ed3282d9883372da86532fc84')
