
# Maintainer: Kurt J. Bosch <kjb-temp-2009 at alpenjodel.de>

pkgname=fbsplash-extras
pkgver=2.0.8
pkgrel=5
pkgdesc="Advanced Fbsplash script for Arch Linux initscripts"
arch=('any')
url="http://aur.archlinux.org/packages.php?ID=38775"
license=( 'GPL' )
depends=( 'bash>=4' 'fbsplash>=1.5.4.3-31' 'initscripts>=2010.06' )
conflicts=( 'initscripts-extras-fbsplash' 'initscripts-splashy' )
optdepends=(
	'fbsplash-themes-arch-banner: Arch banner themes with optional daemons-icons'
	'mkinitcpio>=0.6.6: Early splash daemon start'
)
source=(
	fbsplash-extras.sh
	fbsplash-initscripts-services-get
)
md5sums=('7f1ca943ee158010bfd410fe54565f49'
         '1821489d53b45c8c5c68d3695bc78d36')
changelog=Changelog

build() {
	cd ${pkgdir}
	# Install Fbsplash scripts and config file
	install -D -m644 ${srcdir}/fbsplash-extras.sh etc/rc.d/functions.d/fbsplash-extras.sh || return 1
	# Install utility script
	mkdir -p usr/bin/
	install -m755 ${srcdir}/fbsplash-initscripts-services-get usr/bin/
}
