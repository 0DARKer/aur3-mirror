# Maintainer: Ricardo Wurmus <maintainer's full name at gmail com>
# Contributor: bender02 at archlinux dot us
pkgname=ruby-gstreamer
pkgver=1.0.0
pkgrel=2
pkgdesc="Ruby gstreamer bindings"
arch=('i686' 'x86_64')
url="http://ruby-gnome2.sourceforge.jp"
license=('LGPL')
depends=('ruby' 'ruby-glib2' 'gstreamer0.10-base')
makedepends=('rubygems' 'ruby-pkgconfig')
source=(http://rubygems.org/downloads/gstreamer-$pkgver.gem)
noextract=(gstreamer-$pkgver.gem)
md5sums=('c4d289a02a3993967dfeb7b0c594f541')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies --verbose -i "$pkgdir$_gemdir" -n "$pkgdir"/usr/bin gstreamer-$pkgver.gem
}
