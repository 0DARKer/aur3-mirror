# Contributor: bender02 at gmx dot com
pkgname=ruby-gstreamer
pkgver=0.19.3
pkgrel=1
pkgdesc="Ruby gstreamer bindings"
arch=('i686' 'x86_64')
url="http://ruby-gnome2.sourceforge.jp"
license=('LGPL')
depends=('ruby' 'gstreamer0.10-base')
source=(http://downloads.sourceforge.net/ruby-gnome2/ruby-gnome2-all-$pkgver.tar.gz)
md5sums=('771b0cb607a27bddd02860d38e94666f')

build() {
  cd "$srcdir/ruby-gnome2-all-$pkgver"
  ruby extconf.rb gstreamer || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
