# Maintainer: Oliver Mangold <o.mangold at gmail dot com>
pkgname=python-alembic
pkgver=0.5.0
pkgrel=3
pkgdesc="Lightweight dababase migration tool for usage with SQLAlchemy"
arch=('any')
license=('MIT')
url=('https://bitbucket.org/zzzeek/alembic')
makedepends=('python-pip' 'python-distribute')
source=('https://pypi.python.org/packages/source/a/alembic/alembic-0.5.0.tar.gz' 'https://bitbucket.org/zzzeek/alembic/raw/79409b733d54af1781bb473115127d57bf8408d1/LICENSE')

md5sums=('e22d10fd885473eccc9c8c75238e97ce' '8a916dc02872b4ca467ca1aeaf9516ef')
depends=('python')
provides=("${pkgname}")

build() {
  cd "${srcdir}/alembic-${pkgver}"
  python setup.py build
}

package() {
  cd "${srcdir}/alembic-${pkgver}"
  python setup.py install --root "${pkgdir}"
  install -m 755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m 755 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
