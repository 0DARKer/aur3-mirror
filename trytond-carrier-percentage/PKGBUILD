# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-carrier-percentage
_pkgname=trytond_carrier_percentage
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The carrier_percentage module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-carrier>=3.2' 'trytond-currency>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("2de2e82deb4bb25e39d9c947b5b48479")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}