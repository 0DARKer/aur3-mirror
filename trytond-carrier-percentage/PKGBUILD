pkgname=trytond-carrier-percentage
_pkgname=trytond_carrier_percentage
pkgver=2.8.0
_pkgdir=2.8
pkgrel=1
pkgdesc="The carrier_percentage module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.8' 'trytond-carrier>=2.8' 'trytond-currency>=2.8')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("50f8fa1a7d5ef5a2b08e2f1ecc656c5c")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}