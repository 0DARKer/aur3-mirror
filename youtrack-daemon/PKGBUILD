daemonname=youtrack
pkgname=${daemonname}-daemon
pkgver=5.1
pkgrel=1
pkgdesc="Issue Tracker and Agile Project Management Tool - Systemctl Daemon" 
url="https://www.jetbrains.com/youtrack/index.jsp" 
license="nonfree" 
arch=(i686 x86_64)
_watch=('http://www.jetbrains.com/js2/version.js','versionYTLong\s=\s"([\d.]*)"')
depends=('java-runtime')
install=$daemonname.install
source=("http://download.jetbrains.com/charisma/${daemonname}-${pkgver}.jar"
        'youtrack.service'
        'youtrack.conf'
        )
md5sums=('1a6b8c51e705cea2759ab4b565b6345d'
         'b93b1649511d4eeaf1ce6fc44d45d79d'
         '1ad39a3cf7cdbe420e721b242b82bbb5')
noextract=("${daemonname}-${pkgver}.jar")

package() { 
  mkdir -p "${pkgdir}/opt/${daemonname}"
  mkdir -p "${pkgdir}/etc/conf.d"
  mkdir -p "${pkgdir}/usr/lib/systemd/system"

  cp "${srcdir}/${daemonname}-${pkgver}.jar" "${pkgdir}/opt/${daemonname}/${daemonname}.jar"
  cp "${srcdir}/youtrack.service" "${pkgdir}/usr/lib/systemd/system/"
  cp "${srcdir}/youtrack.conf" "${pkgdir}/etc/conf.d/${daemonname}"
}
