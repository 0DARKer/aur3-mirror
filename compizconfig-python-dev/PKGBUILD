pkgname=compizconfig-python-dev
pkgver=0.9.4
pkgrel=1
pkgdesc="Compizconfig bindings for python"
arch=('i686' 'x86_64')
url="http://compiz.org"
license=('GPL')
provides=('compizconfig-python')
conflicts=('compizconfig-python')
depends=('compiz-core-dev' 'libcompizconfig-dev' 'glib2' 'python2')
makedepends=('intltool' 'pkgconfig' 'cython')
source=("http://releases.compiz.org/$pkgver/compiz-compizconfig-python-${pkgver}.tar.gz")
sha1sums=('7588b9a6cd7c5b72c61fb5e1bb4af014e5f83082')

build()
{
	cd "compizconfig-python"
	env PKG_CONFIG_PATH="/usr/lib/pkgconfig:$PKG_CONFIG_PATH" \
		python2 setup.py build
	env PKG_CONFIG_PATH="/usr/lib/pkgconfig:$PKG_CONFIG_PATH" \
		python2 setup.py install --prefix="/usr" --root="$pkgdir"
}
