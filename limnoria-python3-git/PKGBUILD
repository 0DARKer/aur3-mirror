# Maintainer: Cravix < dr dot neemous at gmail dot com >

pkgname=limnoria-python3-git
pkgver=20130320
pkgrel=1
pkgdesc="An IRC bot based on Supybot, with sqlite3 support and other features (unstable version)"
arch=('any')
url="https://github.com/ProgVal/Limnoria"
license=('3-clause BSD')
depends=('python')
makedepends=('git')
optdepends=('pyopenssl: SSL server support'
            'python-feedparser: RSS plugin support (but seems broken now)')

_gitname="Limnoria"
_gitroot="git://github.com/ProgVal/Limnoria.git"
_gitbranch="master"

build() {
	
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname" -b "$_gitbranch"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  rename "supybot" "supybot3" ./docs/man/* ./scripts/*
  sed -i '/man1/s/supybot/supybot3/; s/\(scripts\/supybot\)/\13/' setup.py
  python3 setup.py build
}

package() {
	cd "$srcdir/$_gitname-build/"
  python3 setup.py install --root="$pkgdir" || return 1
}
