# Maintainer: n3lthon
pkgname=cartaodecidadao
pkgver=1.23.0
pkgrel=1
pkgdesc="Portuguese Citizen Card Application"
arch=('i686' 'x86_64')
url="http://www.cartaodecidadao.pt/"
license=('custom')
depends=('qt>=4.5.0' 'pcsclite>=1.5.0' 'jasper' 'openssl' 'ccid') #'openssl098'
source=("https://www.portaldocidadao.pt/ccsoftware/cartao_de_cidadao_v1_23_ubuntu_10_04_i586.tar.gz")
md5sums=('f3524a4bac724ee94e8b50a2eb45c991')
install=(cartaodecidadao.install)

package() {
  install -D -m644 ${srcdir}/Cartao_de_Cidadao/install/libpteidpkcs11.so.${pkgver} ${pkgdir}/lib/libpteidpkcs11.so.${pkgver}
  install -D ${srcdir}/Cartao_de_Cidadao/install/libpteidlibopensc.so.${pkgver}  ${pkgdir}/lib/libpteidlibopensc.so.${pkgver}
  install -D ${srcdir}/Cartao_de_Cidadao/install/libpteid.so.${pkgver} ${pkgdir}/lib/libpteid.so.${pkgver}
  install -D ${srcdir}/Cartao_de_Cidadao/install/libpteiddlg.so.${pkgver} ${pkgdir}/lib/libpteiddlg.so.${pkgver}
  install -D ${srcdir}/Cartao_de_Cidadao/install/libpteidhttps.so.${pkgver} ${pkgdir}/lib/libpteidhttps.so.${pkgver}

  ln -sf libpteidpkcs11.so.${pkgver} ${pkgdir}/lib/libpteidpkcs11.so
  ln -sf libpteidlibopensc.so.${pkgver} ${pkgdir}/lib/libpteidlibopensc.so
  ln -sf libpteid.so.${pkgver} ${pkgdir}/lib/libpteid.so
  ln -sf libpteiddlg.so.${pkgver} ${pkgdir}/lib/libpteiddlg.so
  ln -sf libpteidhttps.so.${pkgver} ${pkgdir}/lib/libpteidhttps.so

  install -D ${srcdir}/Cartao_de_Cidadao/install/pteidgui ${pkgdir}/usr/bin/pteidgui
  install -D ${srcdir}/Cartao_de_Cidadao/install/pteidtrayapplet ${pkgdir}/usr/bin/pteidtrayapplet
  install -D ${srcdir}/Cartao_de_Cidadao/install/pteiddlgsrv ${pkgdir}/usr/bin/pteiddlgsrv

  install -D ${srcdir}/Cartao_de_Cidadao/install/libqtjp2.so ${pkgdir}/usr/bin/imageformats/libqtjp2.so

  install -D ${srcdir}/Cartao_de_Cidadao/install/pcscerrors_pt.qm ${pkgdir}/usr/bin/translations/pcscerrors_pt.qm
  install -D ${srcdir}/Cartao_de_Cidadao/install/pteiddlg_pt.qm ${pkgdir}/usr/bin/translations/pteiddlg_pt.qm
  install -D ${srcdir}/Cartao_de_Cidadao/install/pteidgui_pt.qm ${pkgdir}/usr/bin/translations/pteidgui_pt.qm
  install -D ${srcdir}/Cartao_de_Cidadao/install/pteidtrayapplet_pt.qm ${pkgdir}/usr/bin/translations/pteidtrayapplet_pt.qm

  install -D ${srcdir}/Cartao_de_Cidadao/install/pteidlib.h ${pkgdir}/include/pteid/pteidlib.h
  install -D ${srcdir}/Cartao_de_Cidadao/install/pteiddefines.h ${pkgdir}/include/pteid/pteiddefines.h

  install -D ${srcdir}/Cartao_de_Cidadao/install/app.png ${pkgdir}/usr/bin/images/app.png

  install -D ${srcdir}/Cartao_de_Cidadao/install/libpteidpp1_gempc.so.${pkgver} ${pkgdir}/lib/pteidpp/libpteidpp1_gempc.so.${pkgver}
  ln -sf libpteidpp1_gempc.so.${pkgver} ${pkgdir}/lib/pteidpp/libpteidpp1_gempc.so

  install -D ${srcdir}/Cartao_de_Cidadao/install/pteidlibj.jar ${pkgdir}/lib/pteid_jni/pteidlibj.jar
  install -D ${srcdir}/Cartao_de_Cidadao/install/libpteidlibj.so.${pkgver} ${pkgdir}/lib/pteid_jni/libpteidlibj.so.${pkgver}
  install -D ${srcdir}/Cartao_de_Cidadao/install/Test.java ${pkgdir}/lib/pteid_jni/Test.java
  ln -sf libpteidlibj.so.${pkgver} ${pkgdir}/lib/pteid_jni/libpteidlibj.so

  install -D ${srcdir}/Cartao_de_Cidadao/install/CartaodeCidadao001.der ${pkgdir}/usr/bin/eidstore/certs/CartaodeCidadao001.der
  install -D ${srcdir}/Cartao_de_Cidadao/install/ECRaizEstado_novo_assinado_GTE.der ${pkgdir}/usr/bin/eidstore/certs/ECRaizEstado_novo_assinado_GTE.der
  install -D ${srcdir}/Cartao_de_Cidadao/install/GTEGlobalRoot.der ${pkgdir}/usr/bin/eidstore/certs/GTEGlobalRoot.der

  # Desktop File			
  #install -D ${srcdir}/Cartao_de_Cidadao/Desktop/Cartao\ de\ Cidadao.desktop $DESKTOP
}

#make DESTDIR="$pkgdir/" install
