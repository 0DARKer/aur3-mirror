# Maintainer: Juan Miguel Cejuela <jmcejuela@ashrentum.net>
pkgname=python2-apsw
pkgver=3.7.2_r1
pkgrel=2
pkgdesc="Python wrapper for SQLite"
arch=('i686' 'x86_64')
url="http://code.google.com/p/apsw/"
license=('MIT')
depends=('python2' 'sqlite3')
source=("http://apsw.googlecode.com/files/apsw-3.7.2-r1.zip" 'LICENSE')

md5sums=('70e825dd1c4332a37597285f9f8c7469'
         'efc704d50cb39441d00f9dc76cbe6665')

build() {
  cd $srcdir/apsw-3.7.2-r1
  python2 setup.py install --root=$pkgdir/

  install -D -m644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

