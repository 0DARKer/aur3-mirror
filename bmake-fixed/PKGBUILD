pkgname="bmake-fixed"
pkgver=20101126
pkgrel=2
pkgdesc="Portable NetBSD make"
arch=('i686' 'x86_64')
url="http://www.crufty.net/help/sjg/bmake.html"
license=('BSD')
depends=('bmake-mk-files')
source=("ftp://ftp.netbsd.org/pub/NetBSD/misc/sjg/bmake-$pkgver.tar.gz")
md5sums=('941d4b1ddb943c824ea0b096b8eea7bf')

build() {
	rm -rf build
	mkdir build
	cd build

	../bmake/configure --prefix=/usr --with-default-sys-path=/usr/share/mk

	sh make-bootstrap.sh

	# Run the test suite
	MAKEFLAGS="" ./bmake test
}

package() {
	install -Dm755 build/bmake "$pkgdir"/usr/bin/bmake
	install -Dm644 bmake/bmake.1 "$pkgdir"/usr/share/man/man1/bmake.1
}
