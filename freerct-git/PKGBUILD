# Maintainer: Moritz Lipp <mlq@pwmt.org>

pkgname=freerct-git
pkgver=f498ebe
pkgrel=1
pkgdesc="Open Source RollerCoaster Tycoon 1 and 2 implementation"
arch=('i686' 'x86_64')
url="http://freerct.org"
license=('GPL2')
depends=('sdl2' 'sdl2_ttf' 'flex' 'libzip' 'bison' 'libpng')
makedepends=('git' 'cmake')
conflicts=('freerct')
provides=('freerct')
source=('freerct::git+https://github.com/FreeRCT/FreeRCT.git')
md5sums=('SKIP')
_gitname=freerct

build() {
  cd "$srcdir/$_gitname"
  cmake .
  make
}

package() {
  cd "$srcdir/$_gitname"
  install -D -m755 "./src/freerct" "$pkgdir/usr/bin/freerct"
  install -D -m755 "./src/rcdgen/rcdgen" "$pkgdir/usr/bin/rcdgen"
  install -D -m664 LICENSE-gpl-2.0.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

pkgver() {
  cd "$srcdir/$_gitname"
  local ver="$(git describe --long --always)"
  printf "%s" "${ver//-/.}"
}

# vim:set ts=2 sw=2 et:
