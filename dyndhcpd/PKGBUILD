# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=dyndhcpd
pkgver=0.0.1.r0.gf218a4a
pkgrel=2
pkgdesc="start DHCP daemon that dynamically creates configuration based on assigned IP address"
arch=('i686' 'x86_64')
url="https://github.com/eworm-de/dyndhcpd"
depends=('dhcp')
makedepends=('git' 'markdown')
license=('GPL')
source=('git://github.com/eworm-de/dyndhcpd.git')
backup=('etc/dyndhcpd/dhcpd.conf')

pkgver() {
	cd dyndhcpd/

	if GITTAG="$(git describe --abbrev=0 --tags 2>/dev/null)"; then
		echo "$(sed -e "s/^${pkgname%%-git}//" -e 's/^[-_/a-zA-Z]\+//' -e 's/[-_+]/./g' <<< ${GITTAG}).r$(git rev-list --count ${GITTAG}..).g$(git log -1 --format="%h")"
	else
		echo "0.r$(git rev-list --count master).g$(git log -1 --format="%h")"
	fi
}


build() {
	cd dyndhcpd/

	make
}

package() {
	cd dyndhcpd/

	make DESTDIR="${pkgdir}" install
}

sha256sums=('SKIP')
