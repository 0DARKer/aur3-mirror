pkgname=tracks
pkgver=1.7
pkgrel=2
pkgdesc="Web-based application helping to implement the 'Getting things done' methodology"
arch=('i686' 'x86_64')
url=("http://www.getontracks.org/")
license=('custom:"unknown"')
depends=('ruby' 'rubygems' 'rake')
makedepends=('p7zip')
source=(http://bsag.bingodisk.com/public/files/${pkgname}-${pkgver}.zip)
md5sums=('b770c947e34da1c6f40b199183e7fb50')
noextract=(${pkgname}-${pkgver}.zip)
install=${pkgname}.install

build() {
	7z x ${pkgname}-${pkgver}.zip > /dev/null
	install -d /srv/http/tracks
	cp -r ${pkgname}-${pkgver}/* /srv/http/tracks
}
