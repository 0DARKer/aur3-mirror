pkgname=y-cruncher
pkgver=0.5.5.9178
pkgrel=1
pkgdesc="The first scalable multi-threaded Pi-benchmark for multi-core systems"
arch=('x86_64')
url="http://www.numberworld.org/y-cruncher/"
license=('custom')
options=(!strip)
depends=('gcc-libs')
source=('http://www.numberworld.org/y-cruncher/y-cruncher%20v0.5.5.9178%20Alpha.tar.gz')
