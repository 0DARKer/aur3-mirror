pkgname=y-cruncher
pkgver=0.6.5.9443b
pkgrel=1
pkgdesc="The first scalable multi-threaded Pi-benchmark for multi-core systems."
arch=('x86_64')
url="http://www.numberworld.org/y-cruncher/"
license=('unknown')
options=(!strip)
depends=('gcc-libs')
source=(y-cruncher-${pkgver}.tar.gz::"http://www.numberworld.org/y-cruncher/y-cruncher%20v${pkgver}%20(fix%201).tar.gz")
md5sums=('055f4d65556d2eddd14a1037ced03fc2')

package() {
  install -D -m755 ${srcdir}/"y-cruncher v${pkgver} (fix 1)/Binaries"/"x64 SSE3 ~ Kasumi.out" \
                   ${pkgdir}/usr/bin/y-cruncher
}
