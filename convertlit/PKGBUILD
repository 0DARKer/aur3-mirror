# Maintainer: Krzysztof Klimonda <kklimonda@gmail.com>
pkgname=convertlit
pkgver=1.8
pkgrel=1
pkgdesc="Convert MS Reader files to HTML"
arch=('i686')
license=('GPL2')
url=('http://www.convertlit.com/')
source=('http://www.convertlit.com/clit18src.zip'
        'http://math.libtomcrypt.com/files/ltm-0.30.tar.bz2')
md5sums=('d691d4729485fe5d73e3f0937d8fb42e'
         'f45604da6cee095258b48b5fb701b5be')

build() {
  cd $startdir/src/
  
  cd libtommath-0.30 && make || return 1
  cd ../lib && make || return 1
  cd ../clit18
  make || return 1
  mkdir -p $startdir/pkg/usr/bin || return 1
  cp clit $startdir/pkg/usr/bin || return 1
}
