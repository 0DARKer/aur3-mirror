pkgname=sph-dg-git
_gitname=sph-dg
pkgver=
pkgrel=1
pkgdesc='generic graph database for guile'
arch=(any)
license=(GPL3)
makedepends=(git sph-sc)
depends=(guile sph-lib liblmdb)
provides=(sph-dg)
source=("git://git.sph.io/sph-dg")
url="http://sph.io/content/2faf"
md5sums=(SKIP)

pkgver() {
  cd $_gitname
  git log -n 1 --pretty=format:"%h"
}

package() {
  cd $_gitname
  chmod 755 -R "${pkgdir}"
  ./exec/compile
  ./exec/install "${pkgdir}"
}