# Contributor: Tim Diels <limyreth[at]gmail.com>
pkgname=vimpdb
pkgver='0.beta'
pkgrel=2
pkgdesc="A vim script for debugging python."
arch=(i686 x86_64)
url="http://code.google.com/p/vimpdb/"
license=('GPL3')
groups=()
depends=(vim python)
makedepends=(hd2u)
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=('http://vimpdb.googlecode.com/files/VimPdb.tar')
noextract=()
md5sums=('ba777bb3f8f2dd991958f3011779c082')

build() {
  cd ${srcdir}

  dos2unix --d2u VimPdb.py VimPdb.vim

  install --verbose -m 644 -D VimPdb.py \
    ${pkgdir}/usr/share/vim/vimfiles/plugin/VimPdb.py || return 1
  install --verbose -m 644 -D VimPdb.vim \
    ${pkgdir}/usr/share/vim/vimfiles/plugin/VimPdb.vim || return 1
  install --verbose -m 644 -D readme.txt \
    ${pkgdir}/usr/share/doc/vimpdb/readme.txt || return 1
}

# vim:set ts=2 sw=2 et:
