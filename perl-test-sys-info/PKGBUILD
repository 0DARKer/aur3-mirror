pkgname='perl-test-sys-info'
pkgver='0.20'
pkgrel='1'
pkgdesc="'Centralized test suite for Sys::Info.'"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Test-Sys-Info'
source=('http://search.cpan.org/CPAN/authors/id/B/BU/BURAK/Test-Sys-Info-0.20.tar.gz')
md5sums=('98b66d4fb7612ac35c31c2f57ddf326e')

build() {
  DIST_DIR="${srcdir}/Test-Sys-Info-0.20"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
