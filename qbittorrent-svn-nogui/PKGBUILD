pkgname=qbittorrent-svn-nogui
pkgver=4863
pkgrel=1
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library, w/o gui"
arch=('i686' 'x86_64')
url="http://www.qbittorrent.org/"
license=('GPL')
depends=('libtorrent-rasterbar' 'curl' 'xdg-utils' 'zziplib' 'boost>=1.41.0')
makedepends=('subversion')
conflicts=('qbittorrent')

_svntrunk="https://qbittorrent.svn.sourceforge.net/svnroot/qbittorrent/trunk/"
_svnmod="qbittorrent"

build() {
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

        ./configure --prefix=/usr --disable-gui || return 1
        make || return 1
        make INSTALL_ROOT=${pkgdir} install || return 1
rm -r $srcdir/$_svnmod-build
}
