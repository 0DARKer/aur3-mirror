_packagename=vte
pkgname=ruby-${_packagename}
pkgver=2.2.0
pkgrel=2
pkgdesc="Ruby bindings to VTE (gtk2)"
arch=('i686' 'x86_64')
url="http://rubygems.org/gems/vte"
license=('LGPL')
depends=('ruby-gtk2' 'vte')
makedepends=('ruby-pkgconfig')
source=("http://rubygems.org/downloads/${_packagename}-$pkgver.gem")
noextract=("${_packagename}-$pkgver.gem")
sha1sums=('fd7a933c15f1663ab1c858a4ac8fbcb386b30d55')

build() {
	cd "$srcdir"
}

package() {
	cd "$srcdir"
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	gem install --no-user-install --ignore-dependencies -i "${pkgdir}${_gemdir}" "${_packagename}-$pkgver.gem"
	install -Dm644 "$pkgdir$_gemdir/gems/${_packagename}-$pkgver/README" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
