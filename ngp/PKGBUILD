# Maintainer: jklee <klee.jonathan@gmail.com>

pkgname=ngp
pkgver=1.1
pkgrel=1
pkgdesc="Ncurses grep tool"
arch=('i686' 'x86_64')
url="https://github.com/jonathanklee/ngp"
license=('GPL')
depends=('ncurses' 'libconfig')
makedeps=('git')
source=(http://github.com/jonathanklee/ngp/archive/$pkgver.tar.gz)
md5sums=('7109199d22fac430f4f7f662cd5575ef')

build() {
  cd $pkgname-$pkgver
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
