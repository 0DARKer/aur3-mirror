_pypkg=pysnmp
pkgname=python2-$_pypkg
pkgver=4.2.1
pkgrel=1
pkgdesc="SNMP library for Python"
url="http://sourceforge.net/projects/$_pypkg/"
license=('custom:BSD')
arch=('any')
depends=('python2' 'python2-pyasn1')
makedepends=('python2-distribute')
optdepends=('python2-pysnmp-mibs')
replaces=('pysnmp')
conflicts=('python-pysnmp')
source=(http://downloads.sourceforge.net/sourceforge/$_pypkg/$_pypkg-$pkgver.tar.gz)
md5sums=('236ec11a4df82d63945132306c31ea0f')

package() {

	cd "$srcdir/$_pypkg-$pkgver"
	python2 setup.py install --root="$pkgdir"
	install -D -m 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
} 
