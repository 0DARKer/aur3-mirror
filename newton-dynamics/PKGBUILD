# Contributor: Josh Taylor (deficite) <joshtaylor.mail@gmail.com> 
pkgname=newton-dynamics
pkgver=2.19
pkgrel=1
pkgdesc="A simple physics API"
arch=('i686' 'x86_64')
url="http://www.newtondynamics.com"
license=('custom')
depends=()
[ "$CARCH" = "i686" ] &&
source=(http://www.newtondynamics.com/downloads/NewtonLinux-32-2.19.tar.gz)
[ "$CARCH" = "x86_64" ] &&
source=(http://www.newtondynamics.com/downloads/NewtonLinux-64-2.19.tar.gz)

build() {
  mkdir -p $pkgdir/usr/share/licenses/custom/newton-dynamics
  mkdir -p $pkgdir/usr/{lib,include}

  cp $srcdir/newtonSDK/doc/license.txt $startdir/pkg/usr/share/licenses/custom/newton-dynamics
  cp $srcdir/newtonSDK/sdk/libNewton.a $startdir/pkg/usr/lib
  cd $srcdir/newtonSDK/sdk
  cp $srcdir/newtonSDK/sdk/Newton.h $startdir/pkg/usr/include

  chmod 644 $pkgdir/usr/lib/libNewton.a
}

[ "$CARCH" = "i686" ] &&
md5sums=('29a7955f6d1b778c868640ad660ec7c5')
[ "$CARCH" = "x86_64" ] &&
md5sums=('de0ced80ea9ba8484bbc31ef6fff6f05')
