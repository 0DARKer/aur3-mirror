# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=zbar-desktop
pkgver=0.0.4
pkgrel=1
pkgdesc="Scan QR-Code from context menu"
arch=('any')
url="http://www.eworm.de/"
depends=('zenity' 'zbar')
license=('GPL')
install=zbar-desktop.install
source=('zbarscan' 'zbarscan.desktop' 'zbarscan.png')

package() {
	install -D -m0755 zbarscan ${pkgdir}/usr/bin/zbarscan
	install -D -m0644 zbarscan.desktop ${pkgdir}/usr/share/applications/zbarscan.desktop
	install -D -m0644 zbarscan.png ${pkgdir}/usr/share/icons/hicolor/48x48/actions/zbarscan.png
}

sha256sums=('f9ab9443c8427005a136de229fe360737122f96c6d9222806bc1a07edfc0636f'
            '58ab07e2e0f40b67fd6a9d05dacc7077d2164ab3cfecaa3f9506c47b01cc9234'
            'eb35679d7c4ada4dda4e34ecb176a5717092b850e5ff3bb874997b7d0fc6de33')
