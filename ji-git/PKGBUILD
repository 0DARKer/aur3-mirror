pkgname=ji-git
pkgver=20100624
pkgrel=1
pkgdesc="A minimalistic FIFO and filesystem based XMPP client"
url="http://lists.suckless.org/dev/1006/4968.html"
arch=('i686' 'x86_64')
license=('GPL')
depends=('iksemel')
optdepends=('gnutls')
source=()

_gitname=${pkgname//-git}
_gitroot=http://iris-comp.ru/public/git/ji.git

build() {
    msg "Connecting to GIT server..."
    if [[ -d $srcdir/$pkgname-$pkgver ]]; then
        cd $srcdir/$pkgname-$pkgver && git pull origin || return 1
    else
        git clone $_gitroot $srcdir/$pkgname-$pkgver || return 1
        cd $srcdir/$pkgname-$pkgver
    fi

    msg "GIT checkout done or server timeout"

    make || return 1
    make destdir=$pkgdir prefix=/usr install
    install -Dm644 COPYING $pkgdir/usr/share/licenses/$_gitname/LICENSE
}
