# Maintainer Alex Ghoust <ghoust@skyper.homelinux.org>

pkgname=instead-oldstory
pkgver=0.4.2
pkgrel=1
pkgdesc="Quest for instead. Old story."
arch=('any')
url="http://instead-games.googlecode.com/"
license=('custom')
depends=('instead')
source=(http://instead-games.googlecode.com/files/$pkgname-$pkgver.zip)
md5sums=('3d06ed7ff54e15889a03018333b82c78')

build() {
  cd "${srcdir}"
  mkdir -p $pkgdir/usr/share/instead/games/oldstory/{gfx,mus}
  install -m644 oldstory/gfx/* $pkgdir/usr/share/instead/games/oldstory/gfx || return 1 
  install -m644 oldstory/mus/* $pkgdir/usr/share/instead/games/oldstory/mus || return 1
  install -m644 oldstory/{main.lua,game.lua} $pkgdir/usr/share/instead/games/oldstory/ || return 1
}

