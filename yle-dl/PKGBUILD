#Maintainer: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=yle-dl
pkgver=1.99.8
pkgrel=1
pkgdesc="Download video and audio from YLE Areena."
arch=("i686" "x86_64")
url="http://users.tkk.fi/~aajanki/rtmpdump-yle/index.html"
license=("GPL")
depends=('pycrypto' 'libltdl')
provides=('rtmpdump' 'rtmpdump-yle')
conflicts=('rtmpdump-yle')
replaces=('rtmpdump-yle')
source=("http://users.tkk.fi/~aajanki/rtmpdump-yle/${pkgname}-${pkgver}.tar.gz"
	arch.patch)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  patch -p1 -i ../arch.patch

  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  mkdir -p "${pkgdir}/usr/lib/pkgconfig"
  make DESTDIR="${pkgdir}" install

  ln -s librtmp.so.1 "${pkgdir}/usr/lib/librtmp.so.0"

  mkdir -p "${pkgdir}/usr/share/launchy"
  cp contrib/launchy.xml "${pkgdir}/usr/share/launchy/yle-dl.xml"
}

md5sums=('8a1038bcd31f03d2faf135d40bafb49b'
         '3527dbaf66f0e023855869f8f6e12868')
