pkgname=yle-dl
pkgver=2.5.0
pkgrel=1
_gitid=38cb68d
pkgdesc="Download video and audio from YLE Areena."
arch=("any")
url="http://aajanki.github.io/yle-dl/"
license=("GPL2")
depends=('python2-crypto' 'rtmpdump' 'python2-youtube-dl')
conflicts=('rtmpdump-yle')
replaces=('rtmpdump-yle')
source=("yle-dl-${pkgver}.tar.gz::https://github.com/aajanki/yle-dl/tarball/${pkgver}")

package() {
  cd "${srcdir}/aajanki-${pkgname}-${_gitid}"

  make prefix=/usr DESTDIR="${pkgdir}" install
}

md5sums=('960a715bca6d613e9e5e5e3e2c1ae17a')
