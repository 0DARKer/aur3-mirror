# Contributer: panthar <panthar@gmail.com>

pkgname=pngnq
pkgver=1.0
pkgrel=2
pkgdesc="Pngnq is a tool for quantizing PNG images in RGBA format"
url="http://pngnq.sourceforge.net/"
license=("BSD")
arch=("i686" "x86_64")
source=("http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz" \
	"build.patch")
md5sums=("2d2cdacf0284477c662fee888c8092d5" "66e3acac09729f705eb1421dd45290f2")

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	patch -p0 -i ${srcdir}/build.patch

	./configure --prefix=/usr
	msg "Starting build process."
	make || return 1
	make DESTDIR=${pkgdir} install
}

# vim: set noet ff=unix:
