# Maintainer: revel <revelΘmuub·net>
# Contributor: joyfulgirl <joyfulgirl (at) archlinux.us>

pkgname=cl-asdf
pkgver=20110214
pkgrel=1
pkgdesc="clisp's Another System Definition Facility (pre-installed in SBCL)"
arch=('any')
url="http://common-lisp.net/project/asdf/"
license=('MIT')
if pacman -Qq clisp-new-clx &>/dev/null; then
    depends=(clisp-new-clx)
elif pacman -Qq clisp-gtk2 &>/dev/null; then
    depends=(clisp-gtk2)
elif pacman -Qq clisp; then
    depends=(clisp)
elif pacman -Qq cmucl; then
    depends=(cmucl)
else
    depends=(clisp)
fi
makedepends=(git texinfo)
provides=(asdf)
source=()
md5sums=()
sha256sums=()
install=asdf.install

_gitname="asdf"
_gitroot="http://common-lisp.net/projects/${_gitname}/${_gitname}.git"

build() {
    cd $srcdir
    msg "Connecting to GIT server $_gitroot"

    if [ -d $_gitname ] ; then
        cd $_gitname && git pull origin master || return 1
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname || return 1
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    rm -rf ${srcdir}/${_gitname}-build
    cp -a ${srcdir}/${_gitname} ${srcdir}/${_gitname}-build || return 1
    cd ${srcdir}/${_gitname}-build || return 1
    makeinfo doc/asdf.texinfo || return 1
}

package() {
    cd ${srcdir}/${_gitname}-build || return 1

# rename info file to prevent conflict with sbcl package
    install -Dm 644 asdf.info ${pkgdir}/usr/share/info/asdf-git.info || return 1

    install -Dm 644 asdf.asd ${pkgdir}/usr/share/common-lisp/source/asdf/asdf.asd || return 1
    install -d ${pkgdir}/usr/share/common-lisp/source/asdf/ || return 1
    install -m 644 -t ${pkgdir}/usr/share/common-lisp/source/asdf/ *.lisp || return 1

#    install -d ${pkgdir}/usr/share/common-lisp/systems/ || return 1

#    cd ${pkgdir}/usr/share/common-lisp/systems/
#    ln -s ../source/asdf/cclan.asd .
}
