# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-mkrf # All lowercase
pkgver=0.2.3
pkgrel=1
pkgdesc="Is a library for generating Rakefiles"
arch=(any)
url="http://rubyforge.org/projects/mkrf/"
license=(MIT)
depends=(ruby) # Gem may depend on other gems as well (you can get dependency information from the yaml specification)
source=(http://gems.rubyforge.org/gems/mkrf-$pkgver.gem)
noextract=(mkrf-$pkgver.gem)
md5sums=('9506a6b1ea97246bb43c18e98861d080')

build() {
cd $srcdir
# _gemdir is defined inside build() because if ruby[gems] is not installed on the system
#  makepkg will barf when sourcing the PKGBUILD
local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

gem install --ignore-dependencies -i "$pkgdir$_gemdir" mkrf-$pkgver.gem
}

