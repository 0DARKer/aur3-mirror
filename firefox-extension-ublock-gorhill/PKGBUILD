# Contributor: polyzen <polycitizen@gmail.com>

pkgname=firefox-extension-ublock-gorhill
pkgver=0.9.3.0
pkgrel=2
pkgdesc='Finally, an efficient blocker. Easy on CPU and memory. Gorhill version.'
url=https://github.com/gorhill/uBlock
arch=('any')
license=('GPL3')
depends=('firefox')
conflicts=('firefox-extension-ublock' 'firefox-extension-ublock-git')
source=("https://github.com/gorhill/uBlock/releases/download/$pkgver/uBlock.firefox.xpi")
sha256sums=('6fe74e1a19f2e66a722ffe236837ecaddacaf07c739165e7222049e453e08a48')

package() {
  local GLOBIGNORE=*.xpi:LICENSE.txt
  local dstdir="$pkgdir"/usr/lib/firefox/browser/extensions/"{2b10c1c8-a11f-4bad-fe9c-1c11e82cac42}"

  install -d "$dstdir"
  cp -dpr --no-preserve=ownership * "$dstdir"
  chmod -R 755 "$dstdir"
}

