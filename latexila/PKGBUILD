# Maintainer: Bernd Pr√ºnster <bernd.pruenster@gmail.com>
pkgname=latexila
provides=('latexila')
conflicts=('latexila-beta')
pkgver=2.8.0
pkgrel=1
install=latexila.install
pkgdesc="LaTeXila, a LaTeX editor designed for the GNOME desktop"
arch=('i686' 'x86_64')
url="http://latexila.sourceforge.net"
license=("GPL")
depends=('glib2>=2.32' 'gtk3>=3.6.0' 'gtksourceview3>=3.8.0' 'libgee06' 'gettext' 'hicolor-icon-theme' 'enchant' 'dconf' 'gsettings-desktop-schemas' 'intltool')
makedepends=('itstool')
source=("http://ftp.gnome.org/pub/GNOME/sources/latexila/2.8/latexila-${pkgver}.tar.xz")
sha256sums=('63dcbc99e2a85fb79ac513437047eea85df92ff6322de520138420e4b3515b0a')

build() {
        cd ${srcdir}/${pkgname}-${pkgver}
        #this is an ugly hack, since Arch Linux does not ship the most recent vala version atm
#        export ac_cv_path_VALAC=""
        ./configure  --prefix=/usr
        make  || return 1
}
package(){
	 cd ${srcdir}/${pkgname}-${pkgver}

        make DESTDIR="${pkgdir}/" install || return 1

    	mkdir -p "$pkgdir"/usr/share/{applications,pixmaps}
    	install -Dm644 "data/icons/48x48/latexila.png" \
            "$pkgdir"/usr/share/pixmaps/$pkgname.png || return 1
    	install -m644 data/$pkgname.desktop \
            "$pkgdir"/usr/share/applications/ || return 1
}
