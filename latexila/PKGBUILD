# Maintainer: Bernd Pr√ºnster <bernd.pruenster@gmail.com>
pkgname=latexila
provides=('latexila')
conflicts=('latexila-beta')
pkgver=2.0.8
pkgrel=3
install=latexila.install
pkgdesc="LaTeXila, a LaTeX editor designed for the GNOME desktop"
arch=('i686' 'x86_64')
url="http://latexila.sourceforge.net"
license=("GPL")
depends=('libgee' 'libunique' 'rubber' 'hicolor-icon-theme' 'gtksourceview2' 'dconf')
makedepends=(cmake)
optdepends=('gsettings-desktop-schemas')
source=("http://ftp.gnome.org/pub/GNOME/sources/latexila/2.0/latexila-${pkgver}.tar.xz")
sha256sums=('4e6fe3d1f7650bba1ab2e29ba97e149f92ac7280fd81cbdcdd7249fd13bb2cee')

build() {
        cd ${srcdir}/${pkgname}-${pkgver}

        cmake -DCMAKE_INSTALL_PREFIX=/usr || return 1
        make  || return 1
        make DESTDIR="${pkgdir}/" install || return 1


    mkdir -p "$pkgdir"/usr/share/{applications,pixmaps}
    install -Dm644 data/images/app/icon48.png \
            "$pkgdir"/usr/share/pixmaps/$pkgname.png || return 1
    install -m644 data/$pkgname.desktop \
            "$pkgdir"/usr/share/applications/ || return 1
}
