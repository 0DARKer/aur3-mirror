# CPAN Name  : RPC-XML
# Contributor: Justin Davis <jrcd83@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 1.10
pkgname='perl-rpc-xml'
pkgver='0.74'
pkgrel='1'
pkgdesc="Data, client and server classes for XML-RPC"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=('perl-xml-libxml: Parse with libxml instead of expat')
depends=('perl-libwww>=5.834' 'perl-xml-parser>=2.31')
url='http://search.cpan.org/dist/RPC-XML'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJRAY/RPC-XML-0.74.tar.gz')
md5sums=('5060424168086f3add19c8fe132bf4c5')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/RPC-XML-0.74"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
