# Maintainer: Remi Gacogne <rgacogne-arch at coredump dot fr>

pkgname=getdns
pkgver=0.1.0
pkgrel=1
pkgdesc="A modern asynchronous DNS API"
arch=('i686' 'x86_64')
url="http://getdnsapi.net/"
license=('BSD')
depends=('libev' 'unbound' 'libidn')
source=(https://github.com/getdnsapi/${pkgname}/archive/v${pkgver}.tar.gz)
md5sums=('b07b1b0d852a6b472a8abcb135cdd831')
sha512sums=('e07248cc2d3d9a85d918381e91b6dcb8472ea665818caa742d0a2d49ceaad5800e2e0ad55b11438796675fb136abb7019ce502b4f840509a7b8ab23218c32da5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/"
  ./configure          \
    --prefix=/usr      \
    --sysconfdir=/etc  \
    --disable-rpath
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/"

  make prefix="${pkgdir}/usr" install

  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
