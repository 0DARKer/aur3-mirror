pkgname=python2-detox
_realname=detox
pkgver=0.9
pkgrel=2
pkgdesc="distributing activities of the tox tool"
url="http://bitbucket.org/hpk42/detox"
depends=('python2' 'python2-tox>=1.4' 'python2-py>=1.4.9' 'python2-eventlet>=0.9.16')
license=('AGPL3')
arch=('any')
source=("http://pypi.python.org/packages/source/d/$_realname/$_realname-0.9.zip")
md5sums=('db85f04aed361b9223a516022ec0d0f0')

build() {
    cd $srcdir/$_realname-$pkgver
    python2 setup.py build
}

package() {
    cd $srcdir/$_realname-$pkgver
    python2 setup.py install --root="$pkgdir" --optimize=1
    mv "${pkgdir}/usr/bin/detox" "${pkgdir}/usr/bin/detox2"
}
