# $Id: PKGBUILD 48231 2009-08-20 17:00:49Z tpowa $
# Maintainer : zlbgps<zlbgps@gmail.com>
pkgname=eselect
pkgver=1.2
pkgrel=1
pkgdesc="Gentoo's multi-purpose configuration and management tool"
url="http://www.gentoo.org/proj/en/eselect/"
install=${pkgname}.install

groups=('base-devel')
P="${pkgname}-${pkgver}"
source=(ftp://gentoo.anheng.com.cn/gentoo/distfiles/${P}.tar.bz2)

arch=('i686' 'x86_64')
makedepends=("xz-utils")
options=('emptydirs')
backup=('/etc/make.conf')
#"${GENTOO_MIRROR}/pax-utils-${PV}.tar.bz2;md5sum="


depends=('file' 'sed' 'ncurses' 'gettext')

license=('GPL-2')

ROOTPATH="/"

build() {
     cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr
	#emake || die "emake failed"
    make || return 1
	make DESTDIR="${pkgdir}" install || return 1
	# needed by news module
	#keepdir /var/lib/gentoo/news
	install -d ${pkgdir}/var/lib/gentoo/news

	# we don't use bash-completion.eclass since eselect
	# is listed in RDEPEND.
    install -Dm644 misc/${pkgname}.bashcomp ${pkgdir}/usr/share/bash-completion/${pkgname} ||  return 1

}

md5sums=('cd90059c5094062e5030bb437938d73c')
