pkgname=deadbeef-plugin-wf
pkgver=20141014
pkgrel=1
pkgdesc="A waveform display plugin for the DeaDBeeF audio player"
arch=('any')
url="http://sourceforge.net/projects/deadbeef-wf/"
license=(GPL)
depends=('deadbeef>=0.6', gtk2)
backup=()
source=(http://downloads.sourceforge.net/project/deadbeef-wf/master/deadbeef-wf_20141014_src.tar.gz)
md5sums=('4c1717a13a5df200d94de21522ef3140')
sha1sums=('9fb5b404d549c7783a82e52789509a477ca36ff7')

build() {
  cd $srcdir/deadbeef-wf-devel
  ./configure --prefix=/usr --disable-gtk3
  make
}

package() {
  cd $srcdir/deadbeef-wf-devel
  make DESTDIR="$pkgdir" install
}

