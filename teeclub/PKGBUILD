# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=teeclub
pkgver=0.1
pkgrel=1
pkgdesc="A command-line patience card game."
arch=('i686')
url="http://uazu.net/freeware/teeclub"
license=('GPL' 'PerlArtistic')
depends=('perl')
source=('http://uazu.net/freeware/teeclub/teeclub.tgz')
md5sums=('f85c62dfbce9fc814b0671e377796000')

build() {
	cd $srcdir
	install -d $pkgdir/usr/share/$pkgname
	install -m755 $pkgname $pkgdir/usr/share/$pkgname/
	mkdir $pkgdir/usr/bin
	ln -s $pkgdir/usr/share/$pkgname/$pkgname $pkgdir/usr/bin/$pkgname
}
