# Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=ruby-sdl
pkgver=2.1.1.1
pkgrel=1
pkgdesc="A Ruby extension library to use SDL"
arch=('i686' 'x86_64')
url="http://www.kmc.gr.jp/~ohai/rubysdl.en.html"
license=('LGPL')
depends=('ruby' 'sdl_mixer' 'libgl' 'sdl-skk' 'sge')
provides=('rubysdl')
install=$pkgname.install
# The number in the middle changes. See downloads page:
# http://rubyforge.org/projects/rubysdl/
source=(http://rubyforge.org/frs/download.php/67740/rubysdl-$pkgver.tar.gz)
md5sums=('322ed760f8afd3a4450ab1228c2efc2e')

build() {
  cd rubysdl-$pkgver

  ruby extconf.rb
  make || return 1
  make DESTDIR="$pkgdir" install

  mkdir -p "$pkgdir"/usr/share/$pkgname
  cp -rf sample/ "$pkgdir"/usr/share/$pkgname/samples/
}
