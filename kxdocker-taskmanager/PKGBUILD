pkgname=kxdocker-taskmanager
pkgver=1.0.2
pkgrel=2
pkgdesc="Task manager for KXDocker"
arch=('i686' 'x86_64')
url="http://www.xiaprojects.com/index.php?section=All&project=KXDocker"
license=('GPL')
depends=('kxdocker')
source=(http://www.xiaprojects.com/www/downloads/files/kxdocker/1.0.0/${pkgname}-${pkgver}.tar.bz2)
md5sums=('61fc1e123ccddf0547056e64dd8ff778')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}/
  ./configure --prefix=/opt/kde --disable-debug
  make || return 1
  make DESTDIR=${startdir}/pkg install
}
