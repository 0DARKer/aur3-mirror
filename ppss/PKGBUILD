
# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
pkgname=ppss
pkgver=2.85
pkgrel=1
pkgdesc="(Distributed) Parallel Processing Shell Script"
arch=('any')
url="http://code.google.com/p/ppss/"
license=('asis')
depends=("bash")
makedepends=('ncurses')
source=(http://ppss.googlecode.com/files/$pkgname-$pkgver.tgz)
md5sums=('1f2f40d50a71e0c224d6a4a3e1eedd13')




build() {
  cd "$srcdir"
  install -m755 -d $pkgdir/usr/bin
  install -m755  ppss $pkgdir/usr/bin
  install -m755 -d $pkgdir/usr/share/licenses/ppss
  /usr/bin/head -n30 ppss > $pkgdir/usr/share/licenses/ppss/COPYING
  chmod 644  $pkgdir/usr/share/licenses/ppss/COPYING



}

# vim:set ts=2 sw=2 et:
