# Maintainer: Lukas Fleischer <archlinux at cryptocrack dot de>

pkgname=aurdupes
pkgver=0.5
pkgrel=1
pkgdesc='Uses your local pacman repos and an AUR package list to find duplicate packages.'
arch=('any')
url='http://cryptocrack.de/'
license=('custom')
depends=('perl' 'wget')
source=("http://cryptocrack.de/files/aurdupes-${pkgver}.tar.gz")
md5sums=('8c91cd1e0528724bbf38d0dded82891d')

build() {
  cd "${srcdir}/aurdupes-${pkgver}"

  install -Dm0755 aurdupes.pl "${pkgdir}/usr/bin/${pkgname}"
  install -Dm0644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
