# Maintainer: Minimalist <minimalist@lavabit.com>

pkgname=perl-object-tiny
pkgver=1.08
pkgrel=1
perlname="Object-Tiny"
pkgdesc="Object::Tiny - Class building as simple as it gets"
arch=('any')
url="http://search.cpan.org/~adamk/$perlname-$pkgver/"
license=('Perl')
depends=('perl')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/$perlname-$pkgver.tar.gz)
md5sums=('01faa01e179ea95ec9e792dd0ead64f0')

build() {
  cd "$srcdir/$perlname-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make test || return 1
  make install DESTDIR="$pkgdir/" || return 1

}
