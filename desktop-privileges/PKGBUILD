pkgname=desktop-privileges
pkgver=0.1
pkgrel=2
pkgdesc="A collection (under development) of polkit configuration files suitable for desktop users: - Enables users of the storage group to mount local disks - Any suggestions and ideas are welcome"
arch=('any')
url="http://aur.archlinux.org/packages.php?ID=41664"
license=('GPL')
depends=('polkit' 'udisks')
replaces=('desptop-privileges')
#install=
#changelog=
source=(udisks-internal.pkla)
md5sums=(e607878228009cf45f23e1a97aba4ec1)

build() {
	echo "nothing to build" #nothing
}

package() {
  cd "$srcdir"
	install -dm700 ${pkgdir}/etc/polkit-1/localauthority/
	install -dm755 ${pkgdir}/etc/polkit-1/localauthority/50-local.d/
	install -Dm644 *.pkla ${pkgdir}/etc/polkit-1/localauthority/50-local.d/
}

