#!/bin/sh -e

echo "System Rescue CD" >&2

export SYSRESCCD_BOOTOPTIONS=""

cat << EOF
menuentry "System Rescue (x86_64)"{
  linux /sysrescue/rescue64 subdir=sysrescue ${SYSRESCCD_BOOTOPTIONS}
  initrd /sysrescue/initram.igz
}

menuentry "System Rescue (i586)"{
	linux /sysrescue/rescue32 subdir=sysrescue ${SYSRESCCD_BOOTOPTIONS}
	initrd /sysrescue/initram.igz
}

menuentry "System Rescue (alternative x86_64)"{
  linux /sysrescue/altker64 subdir=sysrescue ${SYSRESCCD_BOOTOPTIONS}
  initrd /sysrescue/initram.igz
}

menuentry "System Rescue (alternative i586)"{
  linux /sysrescue/altker32 subdir=sysrescue ${SYSRESCCD_BOOTOPTIONS}
  initrd /sysrescue/initram.igz
}
EOF
