# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=python2-mlpy
pkgver=2.2.2
pkgrel=1
pkgdesc='Machine Learning PYthon (mlpy) is a high-performance Python package for predictive modeling.'
arch=('i686' 'x86_64')
url='https://mlpy.fbk.eu/'
license=('GPL3')
depends=('python2-numpy' 'gsl' 'cython')
source=("https://mlpy.fbk.eu/download/src/MLPY-${pkgver}.tar.gz")
md5sums=('e9a9f1b7d013647a36da99aa90c1ace4')

build() {
  cd MLPY-${pkgver}

  # workaround to fix missing include path, need to find real problem
  export CFLAGS="${CFLAGS} -I/usr/lib/python2.7/site-packages/numpy/core/include/"

  python2 setup.py build
}

package() {
  cd MLPY-${pkgver}

  python2 setup.py install --root=${pkgdir} --optimize=1
}
