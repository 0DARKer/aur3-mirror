
pkgname=chsdir
pkgver=20101008
pkgrel=1
pkgdesc="Bash completion, for pinyin support to 'cd'."
url="http://easyscripts.googlecode.com/"
license="GPL"
depends=('bash' 'python2')
source=(http://easyscripts.googlecode.com/files/${pkgname}_${pkgver}.tar.gz)
sha1sums=('f63d6ec0e73ac60bfc49a8d025591de878bf0690')
arch=("any")
build() {
    cd "${srcdir}/bash-completion-pinyin/"
    sed '1s/python/python2/' -i chsdir || return 1
    install -D -m 755 chsdir "${pkgdir}/usr/bin/chsdir" || return 1
    install -D -m 644 chs_completion \
            "${pkgdir}/etc/bash_completion.d/chs_completion" || return 1
}

