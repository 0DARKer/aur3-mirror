# Contributor: Erol V. Aktay <e.aktay@gmail.com>
pkgname=python-geniusql-svn
# revision (23.8.2007)
pkgver=145
pkgrel=2
pkgdesc="A thread-safe low-level object-relational mapper for python"
arch=('i686' 'x86_64')
url="http://projects.amor.org/geniusql"
license='Public Domain'
# check for more
depends=('python')
makedepends=('subversion')
source=()
md5sums=()

_svnmod="geniusql"
_svntrunk="http://projects.amor.org/$_svnmod/svn/trunk"

build() {
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build/$_svnmod
  rm -r doc/
  
  mkdir -p $startdir/pkg/usr/lib/python2.5/site-packages/geniusql
  cp -r * $startdir/pkg/usr/lib/python2.5/site-packages/geniusql/  

  rm -rf $startdir/src/$_svnmod-build
}
