# Maintainer: qs9rx < that nick at enjoys dot it>

pkgname=dump1090-git
pkgver=20130106
pkgrel=1
pkgdesc="Dump1090 is a simple Mode S decoder for RTLSDR devices. Git version"
arch=('i686' 'x86_64')
url="https://github.com/antirez/dump1090"
license=('BSD')
depends=('rtl-sdr')
makedepends=('git')

_gitroot="git://github.com/antirez/dump1090.git"
_gitname="dump1090"


build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi  

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  sed -i -e 's#gmap\.html#/usr/share/dump1090/gmap\.html#g' dump1090.c

  make
}

package() {
  cd "$srcdir/$_gitname-build"
  mkdir -p ${pkgdir}/usr/bin ${pkgdir}/usr/share/dump1090/
  install -m755 dump1090 ${pkgdir}/usr/bin/
  install -m644 gmap.html ${pkgdir}/usr/share/dump1090/
}
