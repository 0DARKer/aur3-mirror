pkgname=jverein
pkgver=2.6.3
pkgrel=2
pkgdesc="A club management plugin for jameica."
arch=('i686' 'x86_64')
url="http://www.jverein.de"
license=("GPL")
depends=('java-runtime>=1.5' 'jameica>=2.6' 'hibiscus>=2.6' 'libstdc++5')
makedepends=('unzip')
install=jverein.install
source=("${pkgname}-${pkgver}.zip::http://sourceforge.net/projects/${pkgname}/files/V_2.6/${pkgname}.${pkgver}.zip/download")
md5sums=('3f7f79d51ad9a1ab602a3d6636abcd97')

package() {
  mkdir -p "$pkgdir/opt/jameica/plugins"

  cp -r "$srcdir/$pkgname" "$pkgdir/opt/jameica/plugins"
}

