pkgname=jverein
pkgver=2.2.1
pkgrel=1
pkgdesc="A club management plugin for jameica."
arch=('i686' 'x86_64')
url="http://www.jverein.de"
license=("GPL")
depends=('java-runtime>=1.5' 'jameica>=2.2' 'hibiscus>=2.2' 'libstdc++5')
makedepends=('unzip')
install=jverein.install
source=("http://heanet.dl.sourceforge.net/project/jverein/V_2.2/jverein.${pkgver}.zip")
md5sums=('deec97df59a898a2b072bf66d60b00f5')

build() {
  mkdir -p $startdir/pkg/opt/jameica/plugins

  cd "$srcdir"
  cp -r $pkgname $startdir/pkg/opt/jameica/plugins
}

