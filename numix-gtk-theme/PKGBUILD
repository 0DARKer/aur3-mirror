#Mantainer: Diego
pkgname=numix-gtk-theme
pkgver=0.0
pkgrel=1
pkgdesc="Numix a flat and light theme with a modern look. It supports Gnome, Unity, Pantheon, XFCE and Openbox. The theme is compatible with GTK 3.6. It also includes a GTK 2.0 theme using Murrine engine"
url="http://satya164.deviantart.com/art/Numix-GTK3-theme-360223962"
license=('cc-by-nc-sa-3.0')
arch=('any')
depends=('gtk-engine-murrine')
makedepends=('unzip')
source=("http://www.deviantart.com/download/360223962/numix___gtk3_theme_by_satya164-d5ygul6.zip")
DLAGENTS=('http::/usr/bin/wget -c -t 3 --waitretry=3 -H -U Mozilla -O %o %u')
md5sums=('e3185d8e4cf7b31c080f57bff4f8b2b5')

package() {
    mkdir -p "${pkgdir}/usr/share/themes"
    unzip "${srcdir}/numix___gtk3_theme_by_satya164-d5ygul6.zip" -d "${pkgdir}/usr/share/themes"
    find "${pkgdir}" -name '*~' -type f -exec rm -f '{}' \;
}
