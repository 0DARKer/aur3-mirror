# Contributor: Luca Bennati <lucak3 AT gmail DOT com>
# Contributor: Laurent Navet <laurent.navet AT gmail DOT com>

pkgname=monkeystudio
pkgver=1.9.0.1
pkgrel=1
_svn=svn4332
pkgdesc="Crossplatform IDE written in C++/Qt4"
arch=('i686' 'x86_64')
url="http://monkeystudio.org"
license=('GPL')
depends=('qt>=4.4.0' 'qscintilla')
conflicts=('monkeystudio2-svn')
source=("http://monkeystudio.googlecode.com/files/mks_${pkgver}-${_svn}-src.tar.gz")
md5sums=('5c901552a3784df9b2d9d711e1188559')

build() {
  cd "${srcdir}/mks_${pkgver}-${_svn}-src"
  qmake prefix=/usr
  make
}

check() {
  cd "${srcdir}/mks_${pkgver}-${_svn}-src"
  make -k check
}

package() {
  cd "${srcdir}/mks_${pkgver}-${_svn}-src"
  qmake prefix="${pkgdir}/usr"
  make install
}

