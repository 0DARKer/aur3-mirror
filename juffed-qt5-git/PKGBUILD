# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

_pkgname=juffed
pkgname=${_pkgname}-qt5-git
pkgver=0.10.63.gdf5faca
pkgrel=1
pkgdesc="A lightweight cross-platform text editor. Qt5 build. Development version."
arch=(
	"$CARCH"
)
url="http://juffed.com/"
license=(
	"GPL2"
)

depends=(
	"qt5-base"
	"qscintilla-qt5"
	"desktop-file-utils"
)
optdepends=()
makedepends=(
	"git"
	"cmake"
)
provides=(
	"${_pkgname}=${pkgver}"
	"${_pkgname}-plugins=${pkgver}"
)
conflicts=(
	"${_pkgname}"
	"${_pkgname}-plugins"
	"${_pkgname}-git"
)
replaces=(
	"${_pkgname}"
	"${_pkgname}-plugins"
	"${_pkgname}-git"
)

install=${pkgname}.install

source=(
	"git+https://github.com/Mezomish/${_pkgname}.git"
	"${pkgname}.install"
)
md5sums=(
	"SKIP"
	"ce029f4378c67a11de5e3c7a67c67784"
)
sha512sums=(
	"SKIP"
	"995dd08f218ebe1bfd1030e7456e4bd70c4b7d8e6cf323d7f0b99b08496da16f4f6f28ace27d616f0d452698ce6e266d342a9129f66df9d2a2224c0a30267308"
)

pkgver() {
	# Updating package version
	cd ${srcdir}/${_pkgname}
	echo "$(git describe --always | sed 's/juffed-//g' | sed 's/-/./g')"
}

build() {
	# Number of jobs
	declare -i njobs=$(nproc)
	
	if [[ $(nproc) -ge 8 ]]; then
		njobs=$(( $njobs/2 ))
	fi
	
	# Building package
	cd ${srcdir}/${_pkgname}
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DUSE_QT5=ON
	make -j${njobs}
}

package() {
	# Installing package
	cd ${srcdir}/${_pkgname}
	make DESTDIR=${pkgdir} install
}