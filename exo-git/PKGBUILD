# Contributor: Berseker <berseker86 at gmail dot com>

pkgname=exo-git
pkgver=1450.05848bb
pkgrel=1
pkgdesc="Extensions to Xfce by os-cillation."
arch=(i686 x86_64)
license=('GPL2' 'LGPL2')
url="http://git.xfce.org/xfce/exo/tree/README"
groups=('xfce4-git')
depends=('libxfce4util' 'gtk2>=2.18.6-1' 'glib2>=2.22.4-1' 'hicolor-icon-theme' 'libxfce4ui')
makedepends=('xfce4-dev-tools' 'git' 'pkgconfig' 'libnotify' 'perl-uri' 'pygtk>=2.13') 
optdepends=('libnotify: enables notification support' 'perl: enables mail-compose helper script')
conflicts=('exo')
provides=('exo')
source=('git://git.xfce.org/xfce/exo')
options=('!libtool')
install=$pkgname.install
md5sums=('SKIP')


pkgver(){
  cd $srcdir/$provides
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $srcdir/$provides

  export PYTHON="/usr/bin/python2"

  libtoolize
  ./autogen.sh  --prefix=/usr --disable-debug --sysconfdir=/etc --libexecdir=/usr/lib \
    --localstatedir=/var --disable-static
  make
  make DESTDIR=$pkgdir install
}