# Contributor: Asparagus Maximus <asparagus.maximus () gmail () com>
# Thanks to:   Nick F0x <f0x () f0x () ru>
pkgname=swiftdove-intel-pgo
_pkgname=swiftdove

pkgver=2.0.0.22
pkgrel=2
pkgdesc="Swiftdove is an optimized build of the Mozilla Thunderbird mail/news client for Linux."
arch=('i686' 'x86_64')
url="http://swiftweasel.tuxfamily.org/"
license=('MPL')
depends=( 'mozilla-common' 'desktop-file-utils' 'nss' 'libxt' 'libstdc++5' 'libgnomeui' )
provides=(swiftdove)
_source_arch="x86_arch"
[ "$CARCH" = "x86_64" ] && _source_arch="x86_64-arch"

source=("http://sunet.dl.sourceforge.net/sourceforge/swiftweasel/${_pkgname}-${pkgver}_intel-pgo_${_source_arch}.tar.gz" \
	swiftdove.desktop)
md5sums=(db6b611e2e0a34e57774cd583ef286bb d2505f6983625544e391ef874bef4835)
[ "$CARCH" = "x86_64" ] && md5sums=(5a376b6d22e0071b2f68ec7621bcde1e d2505f6983625544e391ef874bef4835)
         
build() {
  cd $srcdir/
  mkdir $pkgdir/opt/
  mv $_pkgname $pkgdir/opt/$_pkgname
  mkdir -p $pkgdir/usr/bin
  ln -s /opt/$_pkgname/$_pkgname $startdir/pkg/usr/bin/$_pkgname

  mkdir -p $pkgdir/usr/share/applications
  mkdir -p $pkgdir/usr/share/pixmaps
  install -m644 $startdir/swiftdove.desktop $pkgdir/usr/share/applications/
  install -m644 $pkgdir/opt/swiftdove/icons/mozicon50.xpm $pkgdir/usr/share/pixmaps/swiftdove.xpm
}
