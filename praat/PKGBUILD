# Maintainer: jpate <j.k.pate@sms.ed.ac.uk>
pkgname=praat
pkgver=5.3.13
pkgrel=1
pkgdesc="A tool for 'Doing Phonetics by computer'"
arch=('x86_64' 'i686')
url="http://www.fon.hum.uva.nl/praat/"
license=('GPL')
depends=( 'alsa-lib' 'gtk2' )
source=("http://www.fon.hum.uva.nl/praat/praat5313_sources.tar.gz")
md5sums=('422b668d8500f0e95e43b9544282fc89')

build() {
  cd "$srcdir/sources_5313/"

  cp makefiles/makefile.defs.linux makefile.defs

  make

  install -Dm755  praat "$pkgdir/usr/bin/praat"
}

