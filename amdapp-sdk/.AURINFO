pkgbase = amdapp-sdk
	pkgver = 2.9.1
	pkgrel = 1
	url = http://developer.amd.com/tools-and-sdks/opencl-zone/amd-accelerated-parallel-processing-app-sdk/
	arch = i686
	arch = x86_64
	groups = amdapp
	license = custom
	makedepends = perl
	makedepends = llvm
	makedepends = amdapp-aparapi
	makedepends = apache-ant
	source = http://developer.amd.com/wordpress/media/files/AMD-APP-SDK-linux-v2.9-1.599.381-GA-x64.tar.bz2
	source = amd.icd
	source = amdapp-sdk.sh
	options = staticlibs
	options = libtool
	options = !strip
	options = !upx

pkgname = amdapp-sdk
	pkgdesc = AMD Accelerated Parallel Processing (APP) SDK, with OpenCL 1.2 support.
	install = amdapp-sdk.install
	depends = libcl
	depends = libgl
	depends = llvm
	depends = gcc-libs
	depends = mesa
	depends = glut
	depends = glew
	depends = glu
	optdepends = opencl-headers: for development
	optdepends = catalyst: for OpenCL on AMD GPU
	optdepends = libxext: to run some samples
	optdepends = libsm: to run some samples
	optdepends = libgl: (or nvidia/catalyst-utils) to run some samples
	provides = opencl
	provides = amdstream
	conflicts = amdstream

pkgname = amdapp-sdk-aparapi
	pkgdesc = AMD Accelerated Parallel Processing (APP) SDK, with OpenCL 1.2 support. AparapiUtil and aparapi samples
	install = amdapp-sdk-aparapi.install
	depends = libcl
	depends = libgl
	depends = llvm
	depends = gcc-libs
	depends = mesa
	depends = glut
	depends = glew
	depends = amdapp-aparapi
	depends = apache-ant

pkgname = amdapp-sdk-opencv
	pkgdesc = AMD Accelerated Parallel Processing (APP) SDK, with OpenCL 1.2 support. OpenCVUtils and opencv samples
	install = amdapp-sdk-opencv.install
	depends = libcl
	depends = libgl
	depends = llvm
	depends = gcc-libs
	depends = mesa
	depends = glut
	depends = glew
	depends = opencv

pkgname = amdapp-sdk-nocatalyst
	pkgdesc = AMD Accelerated Parallel Processing (APP) SDK, with OpenCL 1.2 support. Libs and ICD for non-catalyst users.
	install = amdapp-sdk-nocatalyst.install
	depends = amdapp-sdk
	conflicts = catalyst-utils

