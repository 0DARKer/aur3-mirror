# Contributor: Paulo Matias <matias archlinux-br org>
pkgname="iverilog"
pkgver=0.9.4
pkgrel=2
pkgdesc="Icarus Verilog compiler and simulation tool"
arch=('i686' 'x86_64')
url="http://www.icarus.com/eda/verilog/"
license=('GPL')
depends=(zlib bzip2 gcc-libs sh)
makedepends=('bison' 'flex' 'readline')
changelog=$pkgname.changelog
source=("ftp://icarus.com/pub/eda/verilog/v0.9/verilog-$pkgver.tar.gz")
md5sums=('013f1397338fd984ec711250408e43a6')

build() {
  cd $srcdir/verilog-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/verilog-$pkgver
  make -j1 prefix="$pkgdir/usr" install
}
