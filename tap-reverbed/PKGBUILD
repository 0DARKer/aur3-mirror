# Maintainer: Philipp Überbacher <hollunder at gmx dot at>

pkgname=tap-reverbed
pkgver=r0
pkgrel=1
pkgdesc="TAP reverb editor for the TAP reverberator."
arch=('i686' 'x86_64')
url="http://tap-plugins.sourceforge.net/"
license=('GPL')
depends=('jack-audio-connection-kit' 'gtk2')
install=(reverbed.install)
source=(http://downloads.sourceforge.net/sourceforge/tap-plugins/${pkgname}-${pkgver}.tar.gz)
md5sums=('f8b15df131b45d2d5ef2e8d7c34e9a29')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}" || return 1
	
    ./configure --prefix="${pkgdir}/usr" || return 1
	make || return 1
    make install || return 1
	
	cd src/
	mkdir -p "${pkgdir}/usr/share/tap-reverbed" || return 1
	cp .reverbed "${pkgdir}/usr/share/tap-reverbed" || return 1
}
