pkgname=gallery
pkgver=3.0.7
pkgrel=2
pkgdesc="Open source web based photo album organizer."
arch=('i686' 'x86_64')
url="http://galleryproject.org/"
license=('GPL')
depends=('php' 'mysql')
source=(http://downloads.sourceforge.net/gallery/$pkgname-$pkgver.zip)
sha512sums=('7a625e3627d1a2bb2185a60d643ece264258c7f4e8050370a14219200a7ad8c37284991fe88eff9c5c8cb2d71f172d35c59592e06df614fc4a6dd56d3c737ec1')

install=$pkgname.install

package() {
  mkdir -p "$pkgdir/usr/share/webapps"
  cp -a "$srcdir/gallery3" "$pkgdir/usr/share/webapps/"
}
