pkgname=gallery
pkgver=3.0.6
pkgrel=2
pkgdesc="Open source web based photo album organizer."
arch=('i686' 'x86_64')
url="http://galleryproject.org/"
license=('GPL')
depends=('php' 'mysql')
source=(http://downloads.sourceforge.net/gallery/$pkgname-$pkgver.zip)
sha512sums=('b7091e6d01ade0e314a7047adccaa16eb8bc366898a08aa09ffaca1a62a11d7c89841cc3ef2b2d6316e254d4fcaa072111c90c5009fb978e37bf76b0173a56f4')

install=$pkgname.install

package() {
  mkdir -p "$pkgdir/usr/share/webapps"
  cp -a "$srcdir/gallery3" "$pkgdir/usr/share/webapps/"
}
