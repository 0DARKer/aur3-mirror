pkgname=gallery
pkgver=3.0.4
pkgrel=1
pkgdesc="Open source web based photo album organizer."
arch=('i686' 'x86_64')
url="http://gallery.menalto.com"
license=('GPL')
depends=('php' 'mysql')
source=(http://downloads.sourceforge.net/gallery/$pkgname-$pkgver.zip)
sha1sums=('9c37b8df2f0de56a1e51c5b962dec5aa28b49a6a')

install=${pkgname}.install

package() {
  mkdir -p "$pkgdir/srv/http"
  cp -a "$srcdir/gallery3" "$pkgdir/srv/http/gallery3"
}

