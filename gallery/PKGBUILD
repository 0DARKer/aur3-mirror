pkgname=gallery
pkgver=3.0.5
pkgrel=1
pkgdesc="Open source web based photo album organizer."
arch=('i686' 'x86_64')
url="http://gallery.menalto.com"
license=('GPL')
depends=('php' 'mysql')
source=(http://downloads.sourceforge.net/gallery/$pkgname-$pkgver.zip)
sha512sums=('a10f7758e5bd8ee2e59e469633c16e675be103589cd528e7e2294667b3892ca3117273a7c13f24cdb19cf1400739043121d961efd5031b5411080f55b2fb78e1')

install=$pkgname.install

package() {
  mkdir -p "$pkgdir/usr/share/webapps"
  cp -a "$srcdir/gallery3" "$pkgdir/usr/share/webapps/"
}
