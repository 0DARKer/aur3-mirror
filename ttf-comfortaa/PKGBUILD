# Contributor: Roberto Alsina <ralsina@netmanagers.com.ar>

pkgname=ttf-comfortaa
pkgver=1
pkgrel=1
pkgdesc="A simple, good looking, true type font."
arch=('any')
url="http://aajohan.deviantart.com/art/Comfortaa-font-105395949"
license=('OFL')
depends=('fontconfig' 'xorg-font-utils')

install=ttf.install
source=('http://fc01.deviantart.net/fs71/f/2010/201/2/8/Comfortaa___font_by_aajohan.zip')

build() {
    cd $srcdir/Comfortaa
    install -Dm 644 "Comfortaa Bold.ttf" $pkgdir/usr/share/fonts/TTF/comfortaa_bold.ttf
    install -Dm 644 "Comfortaa Regular.ttf" $pkgdir/usr/share/fonts/TTF/comfortaa_regular.ttf
    install -Dm 644 "Comfortaa Thin.ttf" $pkgdir/usr/share/fonts/TTF/comfortaa_thin.ttf
    install -Dm 644 "Please read me.txt" $pkgdir/usr/share/docs/ttf-comfortaa
}
md5sums=('82ea5844d3126c3f56bf4466b2eca296')
