pkgname=py4j
pkgver=0.6
pkgrel=2
pkgdesc="Enables python programs to dynamically access arbitrary Java objects."
depends=('python2' 'java-runtime=6')
arch=('any')
license=('bsd')
url="http://sourceforge.net/projects/py4j"
md5sums=('6fb0e3a6c50672bc0ec90a4d4c314a0a')
source=($pkgname-$pkgver.tar.gz::"http://downloads.sourceforge.net/project/py4j/0.6/Py4J-0.6.tar.gz?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Fpy4j%2Ffiles%2F&ts=1300907866&use_mirror=heanet")
build() {
    install -d ${pkgdir}/usr/share/licenses/${pkgname}
    pwd
    #tar -xvzf $pkgname-$pkgver.tar.gz
    cd Py4J-${pkgver}
    install -D -m644 LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/
    python2 setup.py install --prefix=${pkgdir}/usr
    cp -r doc ${pkgdir}/usr/share/licenses/${pkgname}/
    }
