# Contributor: jose <jose1711 [at] gmail (dot) com>

pkgname=robombs_bin
pkgver=1.01
pkgrel=3
pkgdesc="a free LAN game inspired by Bomberman"
arch=('i686')
url="http://jpct.de/robombs.game/"
license="custom"
depends=('java-runtime')
source=("http://jpct.de/download/robombs.zip")
md5sums=('cd475d67dbe401be48f9f679f0f24765')

build() {
cd $srcdir/robombs
mkdir -p $pkgdir/usr/share/robombs/{bin,data/{levels,sets/{classic,comic,forest,japan,medival,southern,space,warehouse,},sounds/{taunt,},},lib/{jpct,lwjgl-2.0rc2/{jar,native/{linux,macosx,solaris,win32,},},},} 
install -D -m644 bin/* $pkgdir/usr/share/robombs/bin
install -D -m644 data/* $pkgdir/usr/share/robombs/data
install -D -m644 data/levels/* $pkgdir/usr/share/robombs/data/levels
install -D -m644 data/sets/classic/* $pkgdir/usr/share/robombs/data/sets/classic
install -D -m644 data/sets/comic/* $pkgdir/usr/share/robombs/data/sets/comic
install -D -m644 data/sets/forest/* $pkgdir/usr/share/robombs/data/sets/forest
install -D -m644 data/sets/japan/* $pkgdir/usr/share/robombs/data/sets/japan
install -D -m644 data/sets/medival/* $pkgdir/usr/share/robombs/data/sets/medival
install -D -m644 data/sets/southern/* $pkgdir/usr/share/robombs/data/sets/southern
install -D -m644 data/sets/space/* $pkgdir/usr/share/robombs/data/sets/space
install -D -m644 data/sets/warehouse/* $pkgdir/usr/share/robombs/data/sets/warehouse
install -D -m644 data/sounds/* $pkgdir/usr/share/robombs/data/sounds
install -D -m644 data/sounds/taunt/* $pkgdir/usr/share/robombs/data/sounds/taunt
install -D -m644 lib/jpct/* $pkgdir/usr/share/robombs/lib/jpct
install -D -m644 lib/lwjgl-2.0rc2/jar/* $pkgdir/usr/share/robombs/lib/lwjgl-2.0rc2/jar
install -D -m644 lib/lwjgl-2.0rc2/native/linux/* $pkgdir/usr/share/robombs/lib/lwjgl-2.0rc2/native/linux
install -D -m644 lib/lwjgl-2.0rc2/native/macosx/* $pkgdir/usr/share/robombs/lib/lwjgl-2.0rc2/native/macosx
install -D -m644 lib/lwjgl-2.0rc2/native/solaris/* $pkgdir/usr/share/robombs/lib/lwjgl-2.0rc2/native/solaris
install -D -m644 lib/lwjgl-2.0rc2/native/win32/* $pkgdir/usr/share/robombs/lib/lwjgl-2.0rc2/native/win32
install -D -m644 botnames.txt $pkgdir/usr/share/robombs/botnames.txt
(echo "cd /usr/share/robombs"; cat Robombs.sh) > robombs
install -D -m755 Robombs.sh $pkgdir/usr/share/robombs/Robombs.sh
install -D -m755 robombs $pkgdir/usr/bin/robombs
}
