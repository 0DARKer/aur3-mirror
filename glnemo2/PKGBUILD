#Maintainer: Jonathan Fine <were.Vire@gmail.com>
pkgname=glnemo2
pkgver=1.52
pkgrel=1
pkgdesc="an interactive visualization 3D program for nbody snapshots."
arch=('i686' 'x86_64')
url="http://projets.oamp.fr/projects/glnemo2"
license=('GPL')
depends=('qt')
source=(http://projets.oamp.fr/attachments/download/671/$pkgname\_$pkgver.tar.gz)
md5sums=('e31273ade6360c08fc9bf9b7009bc934')
noextract=( ${source[@]##*/} )

build() {
        cd $srcdir

        #work around strange bsdtar errors
        tar xfs ../$pkgname\_$pkgver.tar.gz
        
        cd $pkgname
        qmake -recursive
        
        #Deal with problems in make file
        make -j1 DESTDIR=$pkgdir
}

package() {
        cd $srcdir/$pkgname
        install -D -m755 bin/unix/debug/glnemo2 $pkgdir/usr/bin/glnemo2
        install -D -m644 man/man1/glnemo2.1 $pkgdir/usr/man/man1/glnemo2.1
}

# vim:set ts=2 sw=2 et:

