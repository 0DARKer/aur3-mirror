pkgname=craftbukkit-plugin-essentials-gm
pkgver=2.9.2
pkgrel=1
pkgdesc="Group manager plugins for CraftBukkit Essentials"
arch=(any)
url="http://dev.bukkit.org/server-mods/essentials/"
license=('GPLv3')
depends=('craftbukkit>=1.2.5r4.0' 'craftbukkit-plugin-essentials')
source=("http://tiny.cc/EssentialsGMZip")
md5sums=('d9c954ca6bf06756f93129d98855559f')
makedepends=(unzip)

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  install -m 644 "$srcdir/EssentialsGroupBridge.jar" "$pkgdir/opt/craftbukkit/plugins/"
  install -m 644 "$srcdir/EssentialsGroupManager.jar" "$pkgdir/opt/craftbukkit/plugins/"
}

# vim:set ts=2 sw=2 et:
