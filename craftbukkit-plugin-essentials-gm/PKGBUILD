pkgname=craftbukkit-plugin-essentials-gm
pkgver=2.9.6
pkgrel=1
pkgdesc="Group manager plugins for CraftBukkit Essentials"
arch=(any)
url="http://dev.bukkit.org/server-mods/essentials"
license=("GPLv3")
depends=("craftbukkit-plugin-essentials=$pkgver")
source=("EssentialsGM.zip::http://tiny.cc/EssentialsGMZip")
md5sums=('d70aaea1508a94c9302698c84aaf6180')

package() {
  cd $srcdir
  find . -name '*.jar' | xargs -rtl1 -I {} install -Dm644 {} "$pkgdir/srv/craftbukkit/plugins/"{}
}

