pkgname=craftbukkit-plugin-essentials-gm
pkgver=2.12.2
pkgrel=1
pkgdesc="Group manager plugins for CraftBukkit Essentials"
arch=(any)
url="http://dev.bukkit.org/bukkit-plugins/essentials"
license=("GPLv3")
depends=("craftbukkit-plugin-essentials=$pkgver")
source=("http://ci.ess3.net/guestAuth/repository/download/bt3/5708:id/Essentials-gm.zip")
sha512sums=('7dc3a908b9106c04c8fa12702e2a149096957165e78e39b302323c886c6506b6b4a9c6301634cb159e81c650d10a12600826a8e354356ab6ba4cdac72ec1d478')

package() {
  install -Dm644 "${srcdir}/EssentialsGroupManager.jar" "${pkgdir}/srv/craftbukkit/plugins/EssentialsGroupManager.jar"
}

