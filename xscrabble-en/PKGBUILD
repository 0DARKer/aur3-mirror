# Contributor: pressh <pressh at gmail dot com>

pkgname=xscrabble-en
pkgver=20071219
pkgrel=1
pkgdesc="English language files for xscrabble"
arch=('i686' 'x86_64')
depends=('xscrabble')
url="http://hpux.cs.utah.edu/hppd/hpux/Games/Board/xscrabble-2.10/"
license=('GPL')
source=('ftp://ftp.ac-grenoble.fr/ge/educational_games/xscrabble_en.tar.bz2')
md5sums=('2fb0ec2e84de2fb0b91ca2d6919df4d5')


build() {
mkdir -p $startdir/pkg/usr/share/{xscrabble,X11}

cd $startdir/src/xscrabble_en
# put the correct files in the config file and install it
  sed -i 's/usr\/share\/games\/scrabble/usr\/share\/xscrabble/' \
  	$startdir/src/xscrabble_en/app-defaults/XScrabble_en
install -Dm644 $startdir/src/xscrabble_en/app-defaults/XScrabble_en $startdir/pkg/usr/share/X11/app-defaults/XScrabble_en
cp -rf lib $startdir/pkg/usr/share/xscrabble/en
}
