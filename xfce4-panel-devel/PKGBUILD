# Original PKGBUILD (extra/xfce-utils):
# $Id: PKGBUILD 138667 2011-09-27 14:43:08Z andyrtr $
# Maintainer: AndyRTR <andyrtr@archlinux.org>
# Contributor: tobias <tobias funnychar archlinux.org>

pkgname=xfce4-panel-devel
_pkgname=xfce4-panel
pkgver=4.9.0
pkgrel=2
pkgdesc="Panel for the Xfce desktop environment (Development Version)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://www.xfce.org/"
depends=('exo-devel>=0.7.1' 'garcon>=0.1.5' 'libxfce4ui>=4.8.0' 'xfconf>=4.8.0' 'libwnck' 'libsm' 'hicolor-icon-theme' 'desktop-file-utils')
makedepends=('intltool' 'gtk-doc')
options=('!libtool')
install=${_pkgname}.install
source=(http://archive.xfce.org/src/xfce/${_pkgname}/4.9/${_pkgname}-${pkgver}.tar.bz2)
sha1sums=('504961254b91a224840dc4fd0ed839cd1b984940')

groups=('xfce4-devel')
provides=("$_pkgname=$pkgver")
conflicts=("$_pkgname" "$_pkgname-git")

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var \
	--disable-static \
	--enable-gio-unix \
	--enable-gtk-doc \
	--disable-debug
  make
}

package() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
