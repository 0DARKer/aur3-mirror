# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce4-panel-devel
pkgver=4.8.3
pkgrel=1
pkgdesc="Panel for the Xfce desktop environment (Development Version)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('exo-devel>=0.6.0' 'garcon-devel>=0.1.5' 'libxfce4ui-devel>=4.8.0' 'libwnck' 'libsm' 'hicolor-icon-theme')
makedepends=('intltool' 'gtk-doc')
options=('!libtool')
replaces=('xfce4-panel' 'xfce4-panel-git')
install=xfce4-panel.install
source=(http://archive.xfce.org/src/xfce/xfce4-panel/4.8/xfce4-panel-${pkgver}.tar.bz2)
md5sums=('31d7c15fb93f4a771fc26cf13d4dc010')

build() {
  cd ${srcdir}/xfce4-panel-${pkgver}
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var \
	--disable-static \
	--enable-gio-unix \
	--enable-gtk-doc \
	--disable-debug
  make
}

package() {
	cd ${srcdir}/xfce4-panel-${pkgver}
	make DESTDIR=${pkgdir} install
}
