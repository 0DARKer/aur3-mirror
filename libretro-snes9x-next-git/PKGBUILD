# Maintainer: almostalive <almostalive2003 at gmail dot com>

pkgname=libretro-snes9x-next-git
pkgver=20120603
pkgrel=1
pkgdesc="libretro implementation of snes9x-next."
arch=('i686' 'x86_64')
url="https://github.com/libretro/snes9x-next"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/libretro/snes9x-next.git"
_gitname="snes9x-next"

build() 
{
   cd $srcdir

   msg "Cloning snes9x-next from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   make -f Makefile.libretro
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -m755 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-snes9x-next.so
}

