# Contributor: Sacro <ben at benwoodward dot me dot uk>

pkgname=prebuild
pkgver=2.0.1
pkgrel=1
pkgdesc="A cross-platform XML-driven pre-build tool which allows developers to easily generate project files for major IDE's and .NET development tools"
arch=('i686')
url="https://launchpad.net/dnpb"
license=('GPL')
source=(http://belnet.dl.sourceforge.net/sourceforge/dnpb/$pkgname-$pkgver.tar.gz)
md5sums=('62bbb1bc3d5737d8e6b4b9bb634b3efa')

build() {
	cd $pkgname-$pkgver
	./configure --prefix=/usr
	make
	make DESTDIR=$startdir/pkg install
}
