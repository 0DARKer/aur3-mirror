pkgname=silc-client
pkgver=1.1.8
pkgrel=2
pkgdesc='A Secure Internet Live Conferencing client'
arch=(i686 x86_64)
license=(GPL)
url=http://silcnet.org
depends=(silc-toolkit glib2 ncurses pcre)
makedepends=(yasm)
backup=(etc/silc.conf)
source=(
	ftp://ftp.silcnet.org/silc/client/sources/$pkgname-$pkgver.tar.bz2
)
md5sums=(
	4219d96f6adc2eed406c6dbf8072ae90
)

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc --without-perl --enable-ipv6
	make
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
