# Contributor: scj <scj(at)archlinux(dot)us>
pkgname=syasokoban
pkgver=2.0.1
pkgrel=3
pkgdesc="Still Yet Another implementation of the puzzle game Sokoban"
arch=('i686' 'x86_64')
url="http://grayskygames.com/sokoban.html"
license=('GPL')
depends=('sdl')
install=
source=(http://grayskygames.com/sokoban/$pkgname-$pkgver.tar.gz fixpath.patch)
md5sums=('3735ea7f164587165d4d03805a87b1a5'
         '9804a24b30d718c60396706e09321365')

build() {
  cd "$startdir/src/$pkgname-$pkgver"
  patch -p1 < ../fixpath.patch || return 1
  make || return 1
  mkdir -p $startdir/pkg/usr/bin $startdir/pkg/usr/share/syasokoban
  cp syasokoban $startdir/pkg/usr/bin/syasokoban || return 1
  cp -r data/* $startdir/pkg/usr/share/syasokoban/ || return 1
  find $startdir/pkg -perm 544 -exec chmod 644 {} \;
  find $startdir/pkg -perm 744 -exec chmod 644 {} \;
}
# vim:set ts=4 sw=4 et:

