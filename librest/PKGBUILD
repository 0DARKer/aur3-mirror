# Contributor: Berseker <berseker86 at gmail dot com>

pkgname=librest
_realname=rest

pkgver=0.7.5
pkgrel=2
pkgdesc="a library to access 'RESTful' web services"
arch=('i686' 'x86_64')
url="http://moblin.org/projects/librest/"
license=('GPL')
source=(http://ftp.gnome.org/pub/GNOME/sources/rest/0.7/${_realname}-${pkgver}.tar.gz)
options=('!libtool')
depends=('libsoup' 'libxml2')
makedepends=('gtk-doc')

build() {
  cd "$srcdir/${_realname}-${pkgver}"

  ./configure  --prefix=/usr --without-gnome
  make || return 1
  make DESTDIR="$pkgdir/" install
}
md5sums=('62d74b36ab35d4767be5f757c9135385')
