# Contributor: Kevin Brubeck Unhammer <unhammer@gmail.com>
# Maintainer: Kevin Brubeck Unhammer <unhammer@gmail.com>
pkgname=apertium-mk-en
pkgver=0.1.0
pkgrel=2
pkgdesc="Apertium language data for the Macedonian-English translator."
url="http://apertium.org"
license=('GPL')
makedepends=('pkgconfig')
depends=('lttoolbox>=3.2.0' 'apertium>=3.2.0' 'vislcg3>=0.9.7.6010')
arch=('i686' 'x86_64')
source=("http://downloads.sourceforge.net/sourceforge/apertium/${pkgname}-${pkgver}.tar.gz"
        "Makefile.am.patch"
        "Makefile.in.patch"
	"lexchoicebil.xsl")
md5sums=('622842068b69a91b946f7581c849b06c'
         '73d657f51144882f538afbad1be2370f'
         '63a2dc9baeeec1d6807c2a4072759c59'
         '15b194d1670b1ed768d6e8756ec98d97')

build() {
  patch -p0 < Makefile.am.patch
  patch -p0 < Makefile.in.patch
  cp lexchoicebil.xsl "$srcdir/$pkgname-$pkgver/"

  mkdir -p "$pkgdir/usr/share/apertium/modes"

  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
