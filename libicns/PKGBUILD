pkgname=libicns
pkgver=0.7.1
pkgrel=1
pkgdesc="Library for manipulating MacOS X .icns icon files"
arch=('i686' 'x86_64')
url="http://icns.sourceforge.net"
license=('LGPL' 'GPL')
depends=('libpng' 'jasper')
provides=('icns2png=0.7.1')
conflicts=('icns2png')
replaces=('icns2png')
options=(!libtool)
source=(http://downloads.sf.net/icns/$pkgname-$pkgver.tar.gz png.patch)

build() 
{
  cd "$srcdir"/$pkgname-$pkgver
  patch -p1 -i "$srcdir"/png.patch
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}

md5sums=('ff4624353a074c6cb51e41d145070e10'
         '8f106c23cdfd5ac3a4f39b1eaef112b8')
