# Maintainer: XIE Yuheng <xyheme@gmail.com>

pkgname=cicada-git
pkgver=0.0.1
pkgrel=5
pkgdesc="a simple threaded code based programming language"
url="http://the-little-language-designer.github.io/"
makedepends=('git' 'fasm-linux-git')
depends=('fasm-linux-git')
license=('custom')
arch=('any')
source=('git+https://github.com/the-little-language-designer/cicada.git')
provides=('cicada')
conflicts=('cicada')
md5sums=('SKIP')

build() {
  cd "$srcdir/cicada"
  make all
}

package() {
  cd "$srcdir/cicada"
  make ROOT="$pkgdir" copy-core-file--system
  make PREFIX="$pkgdir/usr" install
  install -D -m644 LICENSE/LICENSE-of-cicada -t "${pkgdir}/usr/share/licenses/cicada"
}
