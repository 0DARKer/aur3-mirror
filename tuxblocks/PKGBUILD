# Maintainer: Your Name <youremail@domain.com>
pkgname=tuxblocks
pkgver=1.0
pkgrel=1
pkgdesc="port of TI calculator game BlockDude"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/tuxblocks/"
depends=(sdl_image sdl_ttf)
if test "$CARCH" == x86_64; then
  depends+=(lib32-sdl_image)
fi
license=('GPL')
source=(http://sourceforge.net/projects/$pkgname/files/TuxBlocks%20Source/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('46709dda4eab0680fdfed37b4a1cce85')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  awk -v f="$(find mk/autoconf -type f -iname \*m4 -printf '%p ')" '{
            if ($1=="$(wildcard")
              {print f}
            else
              {print $0}
            }' Makefile.am > /tmp/Makefile.am
  mv {/tmp,.}/Makefile.am
  cd data
  awk -v f1="$(find levels -maxdepth 1 -type f -printf '%p ')" -v f2="$(find images -maxdepth 1 -type f -printf '%p ')" '{
            if ($2=="levels/*)")
              {print f1,"\\"}
            else if ($2=="images/*)")
              {print f2,"\\"}
            else
              {print $0}
            }' Makefile.am > /tmp/Makefile.am
  mv {/tmp,.}/Makefile.am
  cd ..
  ./autogen.sh
  ./configure --prefix=/usr 
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -d $pkgdir/usr/share/tuxblocks
  cp -dpr --no-preserve=ownership ./tuxblocks* data $pkgdir/usr/share/tuxblocks
  echo '#\!/usr/bin/env bash
  cd /usr/share/tuxblocks
  /usr/share/tuxblocks/tuxblocks' > $startdir/tuxblocks
  install -Dm755 $startdir/tuxblocks $pkgdir/usr/bin/tuxblocks
}

