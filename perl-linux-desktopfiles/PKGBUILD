pkgname=perl-linux-desktopfiles
_pkgname=Linux-DesktopFiles
pkgver=0.03
pkgrel=1
pkgdesc="Perl module to get and parse the Linux .desktop files"
arch=('any')
url="http://search.cpan.org/~trizen/Linux-DesktopFiles-0.02/lib/Linux/DesktopFiles.pm"

source="http://www.cpan.org/authors/id/T/TR/TRIZEN/${_pkgname}-${pkgver}.tar.gz"
md5sums=('be49f19660386340dc7e5fbe605e9fba')

license=('GPLv3')

depends=('perl>=5.10.0')
makedepends=('perl-module-build')
optdepends=()

package() {
    cd "${_pkgname}-$pkgver"
    perl Build.PL --destdir "$pkgdir"
    ./Build
    ./Build test
    ./Build install
}
