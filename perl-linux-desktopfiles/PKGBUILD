# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=perl-linux-desktopfiles
_pkgname=Linux-DesktopFiles
pkgver=0.02
pkgrel=2
pkgdesc="Perl module to get and parse the Linux .desktop files"
arch=('any')
url="http://code.google.com/p/trizen/downloads/detail?name=${_pkgname}-${pkgver}.tar.gz"
license=('GPLv3')

depends=('perl>=5.10.0')
makedepends=('perl-module-build')
optdepends=()

source="http://trizen.googlecode.com/files/${_pkgname}-${pkgver}.tar.gz"
md5sums=('b6a6e835c79fe74a952d2f5e8202a870')

package() {
    cd "${_pkgname}-$pkgver"
    perl Build.PL --destdir "$pkgdir"
    ./Build
    ./Build test
    ./Build install
}
