# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

pkgname=java-commons-collections
pkgver=3.2.1
pkgrel=2
pkgdesc='Implementations of common collections'
arch=('i686' 'x86_64')
url='http://commons.apache.org/collections/'
license=('Apache')
depends=('java-runtime')
makedepends=('apache-ant' 'junit')
source=("http://apache.lehtivihrea.org//commons/collections/source/commons-collections-${pkgver}-src.tar.gz")
sha512sums=('8b9b5344528b3b8a53142abd944ff6b89cc149a3fa0c1eadf3f2172509499af5820ba86859e47fe7f15f994f680fa3c577c21891540b64f41f826babe81a0fc0')

build() {
  cd "${srcdir}/commons-collections-${pkgver}-src"

  ant jar test
}

package() {
  cd "${srcdir}/commons-collections-${pkgver}-src/build/"

  install -dm755 "${pkgdir}/usr/share/java/commons-collections/"
  install -m644 commons-collections-${pkgver}.jar \
    "${pkgdir}/usr/share/java/commons-collections/commons-collections.jar"
}

