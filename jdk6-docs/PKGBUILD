pkgname=jdk6-docs
pkgver=6u30
pkgrel=1
pkgdesc="Java SE Development Kit Documentation 6"
arch=('any')
url="http://www.oracle.com/technetwork/java/javase/downloads/jdk-6u25-doc-download-355137.html"
license=('custom')
options=('docs' '!strip')
optdepends=('java-environment: compile and run the examples')
source=('http://download.oracle.com/otn-pub/java/jdk/6u30-b12/jdk-6u30-apidocs.zip'
        'LICENSE')
md5sums=('a8805b35af0d9b2aa14fe0d1212355b7'
         'fd05f7d59d6335a1e3f12706ae59dbdb')

DLAGENTS=('http::/usr/bin/curl -LC - -b oraclelicense=a -O')

package(){
  cd docs
  mkdir -p "$pkgdir/usr/share/doc/java6/"
  cp -r * "$pkgdir/usr/share/doc/java6/"
  mkdir -p "$pkgdir/usr/share/licenses/jdk6-docs/"
  cp "$srcdir/LICENSE" "$pkgdir/usr/share/licenses/jdk6-docs/"
}
