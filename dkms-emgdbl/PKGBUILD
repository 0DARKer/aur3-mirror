pkgname=dkms-emgdbl
_modname=emgdbl
pkgver=0.1beta3
_pkgver=0.1alpha2
pkgrel=1
pkgdesc="emgdbl Intel emgd backlight driver in DKMS format."
arch=('any')
url="http://edc.intel.com/Software/Downloads/EMGD/"
license=('custom')
depends=('dkms-emgd' 'xf86-video-emgd' 'dkms')
provides=('emgdbl')
install=("${pkgname}.install")
source=(https://launchpad.net/~gma500/+archive/emgd/+files/${_modname}_${pkgver}.tar.gz
        ${pkgname}.install)
md5sums=('dcf95526b5ba6c454b10ac9f727d402b'
         '65ed00ae07f3c325a3adc76d12a68798')

build() {
    cd ${srcdir}
}

package() {
    mkdir -p ${pkgdir}/usr/src/${_modname}-${_pkgver}
    cp -a ${srcdir}/${_modname}/* ${pkgdir}/usr/src/${_modname}-${_pkgver}
}