pkgname=perl-json-rpc
pkgver=1.03
pkgrel=1
pkgdesc="Perl implementation of JSON-RPC 1.1 protocol"
arch=('i686' 'x86_64')
conflicts=('perl-json-rpc-legacy')
url="http://search.cpan.org/~dmaki/JSON-RPC-1.03/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-plack' 'perl-router-simple')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/D/DM/DMAKI/JSON-RPC-${pkgver}.tar.gz")
md5sums=('a978df8ace00cdd286317087bdcd92b0')

build() {
  cd  "${srcdir}/JSON-RPC-${pkgver}"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd  "${srcdir}/JSON-RPC-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}

