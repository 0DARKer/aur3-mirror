# Maintainer: Gaetan Bisson <bisson@archlinux.org>

pkgname=tex4ht
pkgver=1.0.2009_06_11_1038
pkgrel=1
pkgdesc='Highly configurable TeX-based authoring system dedicated mainly to produce hypertext'
url='http://tug.org/tex4ht'
arch=('any')
license=('LPPL')
makedepends=('unzip')
depends=('texlive-core')
source=('http://www.tug.org/applications/tex4ht/tex4ht.zip')
sha1sums=('2970cec5f4afc9039b82d6a4210f21d70ded2f5a')

install=install

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	install -d "${pkgdir}"/usr/share/texmf/tex/generic/tex4ht
	install -m644 texmf/tex/generic/tex4ht/* "${pkgdir}"/usr/share/texmf/tex/generic/tex4ht/
	
	install -d "${pkgdir}"/usr/bin/
	install -m755 bin/ht/unix/* "${pkgdir}"/usr/bin/
	install -m755 bin/unix/* "${pkgdir}"/usr/bin/

	install -d "${pkgdir}"/usr/share/texmf/tex4ht
	cp -r texmf/tex4ht/* "${pkgdir}"/usr/share/texmf/tex4ht/
}
