# Maintainer: Arthur Zamarin <arthurzam@gmail.com> 

pkgname=aftp-server
pkgver=1.0
pkgrel=1
pkgdesc="Very fast file transfering server"
arch=(i686 x86_64)
url="https://github.com/arthurzam/${pkgname}"
license=('GPL2')
depends=('openssl')
source=("$pkgname-$pkgver.tar.gz::https://github.com/arthurzam/${pkgname}/archive/v${pkgver}.tar.gz")
sha256sums=('eec0e3dc6e38cb88e12e4a566fc3e45293b8f7ec33499f17438ede864405a749')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}
 
package() {
  install -Dm755 "${srcdir}/$pkgname-$pkgver/aftp_server" ${pkgdir}/usr/bin/${pkgname}
}
