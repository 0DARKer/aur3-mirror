# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-list-utilsby
pkgver=0.09
pkgrel=1
pkgdesc="Higher-order list utility functions"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~pevans/List-UtilsBy-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/P/PE/PEVANS/List-UtilsBy-$pkgver.tar.gz")
md5sums=('ed80e57fb37bf929c641b8a43470e488')

build() {
	cd "$srcdir/List-UtilsBy-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/List-UtilsBy-$pkgver"

	make install DESTDIR="$pkgdir"
}
