pkgname=xfsudo
pkgver=0.1
pkgrel=1
pkgdesc="To run graphical applications as superuser using sudo"
url="https://github.com/aadityabagga/xfsudo"
arch=('any')
license=('GPL')
depends=('sudo' 'zenity')
optdepends=()
source=("http://sourceforge.net/projects/mefiles/files/xfsudo.tar.gz")
sha1sums=('d9c6daab4d01f1ff3980dd5a0b77a4cbbfc85cd2')

package() {
  cd $srcdir
  make DESTDIR=${pkgdir} install
}


