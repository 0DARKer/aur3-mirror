# Maintainer: aaditya  aaditya_gnulinux@zoho.com

pkgname=xfsudo
pkgver=0.1
pkgrel=1
pkgdesc="To run graphical applications as superuser using sudo."
url="https://github.com/aadityabagga/xfsudo"
arch=('any')
license=('GPL')
depends=('sudo' 'zenity')
optdepends=()
source=("http://sourceforge.net/projects/mefiles/files/${pkgname}-${pkgver}.tar.gz")
sha1sums=('61621210f4bf4ad4dda5e92d6a96f845593e4049')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

