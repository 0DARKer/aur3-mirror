# Maintainer: aaditya  aaditya_gnulinux@zoho.com

pkgname=xfsudo
pkgver=0.2
pkgrel=1
pkgdesc="To run graphical applications as superuser using sudo."
url="https://github.com/aadityabagga/xfsudo"
arch=('any')
license=('GPL')
depends=('sudo' 'zenity')
optdepends=()
source=("http://downloads.sourceforge.net/mefiles/${pkgname}-${pkgver}.tar.gz")
sha1sums=('d531ca3889a11b2804d8294e253037b6b7d78707')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

