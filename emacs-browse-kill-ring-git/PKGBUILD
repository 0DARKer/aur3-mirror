# Maintainer: Limao Luo <luolimao@gmail.com>
# Contributor: Laurent Ollagnier <laurent@wolverine.com>

pkgname=emacs-browse-kill-ring-git
pkgver=20120825
pkgrel=1 
pkgdesc="interactively insert items from kill-ring"
arch=(any)
url="http://www.emacswiki.org/emacs/BrowseKillRing"
license=(GPL)
depends=(emacs)
makedepends=(git)
provides=($pkgname=1.4)
install=$pkgname.install

_gitroot="https://github.com/browse-kill-ring/browse-kill-ring.git"
_gitname="browse-kill-ring"

build() {
    cd "$srcdir"/
    msg "Connecting to GIT server...."

    if [[ -d $_gitname ]] ; then
	cd $_gitname && git pull origin master
	msg "The local files are updated."
    else
	git clone $_gitroot && cd $_gitname
    fi

    msg "GIT checkout done or server timeout"
    msg "Compiling..."
    emacs --batch --eval '(progn
			(push "." load-path)
			(byte-compile-file "browse-kill-ring.el"))'
}

package() {
    cd "$srcdir"/$_gitname/
    for i in $_gitname.el{,c}; do
	install -Dm644 $i "$pkgdir"/usr/share/emacs/site-lisp/$i
    done
}
