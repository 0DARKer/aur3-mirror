packager="Spider.007 <archPackage@spider007.net>"
pkgname=brocade-firmware
pkgver=3.0.0.0
pkgrel=1
pkgdesc="Firmware for brocade adapters"
url="http://www.brocade.com/services-support/drivers-downloads/adapters/Linux.page"
groups=modules
license='custom'
source=(LICENSE "http://esd.brocade.com/s/documents/downloads/HBA/Linux/Drivers/NOARCH/bfa_firmware_linux-3.0.0.0-0.tgz")
md5sums=('3d801d41addad546d9b8a58885bc2fa9' 'f76ddb414a67f70c60a7d9aea92a4d2f')
arch=('any')

package() {
	install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"

	cd $srcdir/3.0_GA_firwmare_image/
	mkdir -p $pkgdir/lib/firmware/
	cp *.bin "${pkgdir}/lib/firmware/"
}
