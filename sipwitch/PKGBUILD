# Maintainer: David Zaragoza <david@zaragoza.com.ve>
pkgname=sipwitch
pkgver=0.9.3
pkgrel=1
pkgdesc="A call and registration server for the SIP protocol."
arch=('x86' 'x86_64')
url="http://www.gnutelephony.org/index.php/GNU_SIP_Witch"
license=('GPL')
groups=()
depends=('libexosip2' 'ucommon')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('http://ftp.gnu.org/gnu/sipwitch/sipwitch-0.9.3.tar.gz')
noextract=()
md5sums=('cdec319a1fd31e12fc8cd4f9b055d830')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

