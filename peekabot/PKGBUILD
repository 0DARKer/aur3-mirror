# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=peekabot
pkgver=0.8.4
pkgrel=1
pkgdesc="A distributed real-time 3D visualization tool for robotics researchers and developers, written in C++"
arch=(i686 x86_64)
url="http://www.peekabot.org/"
license=('GPL')
depends=('gtkglextmm' 'xerces-c' 'boost-libs')
makedepends=('boost')
options=('!libtool')
source=("http://download.sourceforge.net/project/$pkgname/$pkgname/0.8.x/$pkgname-$pkgver.tar.bz2")
md5sums=('82d065427a71816c3c4f44b17484cb52')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
