# Contributor: Tom < tomgparchaur at gmail dot com >

pkgname=copy-agent
pkgver=1.28.0657
pkgrel=2
pkgdesc="Copy.com sync agent"
arch=("i686" "x86_64")
url="http://www.copy.com"
license=(custom)
depends=("qt4")
options=('!strip' '!upx')

_source_arch="x86"
[ "$CARCH" = "x86_64" ] && _source_arch="x86_64"

sha256sums=('daf87d897c97a2644f32bd8077acd53ecc36ed9d46c12ff1f43720bb03df8751'
            'ef1767720b5e5eff6567e537f3fed1c1d7da17e4f4248479816cab924f62e431'
            'b69bc2f8b4315a43d3b60b11ec9c226c2060d14ac4d5702140260961c74620cb')

source=("https://copy.com/install/linux/Copy.tgz"
        "copy-agent.desktop"
        "copy-agent.png")

package() {
  cd ${srcdir}
  install -Dm0644 copy-agent.png "$pkgdir/usr/share/pixmaps/copy-agent.png"
  install -Dm0644 copy-agent.desktop "$pkgdir/usr/share/applications/copy-agent.desktop"

  cd copy/$CARCH
  install -Dm0755 CopyAgent "$pkgdir/usr/bin/CopyAgent"
  install -Dm0755 CopyCmd "$pkgdir/usr/bin/CopyCmd"
  install -Dm0755 CopyConsole "$pkgdir/usr/bin/CopyConsole"
  install -Dm0755 libGui.so "$pkgdir/usr/lib/libGui.so"
  install -Dm0755 libGui.so "$pkgdir/usr/lib/libGui.so"
  install -Dm0755 libCloudSync.so "$pkgdir/usr/lib/libCloudSync.so"
  install -Dm0755 libbrt.so "$pkgdir/usr/lib/libbrt.so"
  install -Dm0755 libbrt++.so "$pkgdir/usr/lib/libbrt++.so"
  install -Dm0755 libnautilus-copy.so "$pkgdir/usr/lib/nautilus/extensions-3.0//libnautilus-copy.so"
  install -Dm0755 libcaja-copy.so "$pkgdir/usr/lib/caja/extensions-2.0/libcaja-copy.so"
}
