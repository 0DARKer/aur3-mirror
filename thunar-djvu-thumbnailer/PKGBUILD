# Author: ava1ar <mail.avatar at gmail.com>

pkgname=thunar-djvu-thumbnailer
pkgver=0.1
pkgrel=2
pkgdesc="Adds support of DjVu thumbnail to Thunar file manager" 
license=('GPL')
arch=('i686' 'x86_64')
depends=('evince')
url="http://goodies.xfce.org/projects/thunar-plugins/thunar-thumbnailers" 
install=thunar-djvu-thumbnailer.install
source=(${pkgname}-${pkgver}.tar.gz) 
md5sums=('dd25e15d28070f5eb41aa733b177a2a1')

build()
{ 
  	cd ${srcdir}/${pkgname}-${pkgver}
	install -D -m 755 djvu-thumbnailer ${pkgdir}/usr/lib/xfce4/djvu-thumbnailer || return 1
	install -D -m 644 djvu-thumbnailer.desktop ${pkgdir}/usr/share/thumbnailers/djvu-thumbnailer.desktop || return 1
}
