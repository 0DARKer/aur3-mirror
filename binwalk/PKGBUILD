# Maintainer: Miguel Revilla <yo@miguelrevilla.com>
# Contributor: s1gma <s1gma@mindslicer.com>

pkgname=binwalk
pkgver=1.0
pkgrel=1
pkgdesc="A tool for searching a given binary image for embedded files"
arch=('i686' 'x86_64')
url="http://code.google.com/p/binwalk/"
license=('MIT')
depends=('python-magic')
provides=('binwalk')
source=(http://binwalk.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('5814f46d2fdd65a3c1f2b924ea27fc8a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}/src
  python2 setup.py install --root=${pkgdir}
}

package() {
  install -m 644 -D ${srcdir}/${pkgname}-${pkgver}/docs/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
