# Contributor: paolo <garrett16@hotmail.it>

pkgname=deja-dup-new
_pkgname=deja-dup
pkgver=17.4
pkgmainver=18
pkgrel=1
pkgdesc="Deja-dup DEVELOPMENT version"
arch=('i686' 'x86_64')
url="https://launchpad.net/deja-dup"
license=('GPL')
depends=('duplicity' 'dconf' 'gnome-doc-utils' 'nautilus' 'glib>=2.26' 'gtk2>=2.22')
optdepends=('gtk3: use the newest toolkit (in future release ONLY gtk3 will be used)')
replaces=('deja-dup')
provides=('deja-dup=17.4')
source=("http://launchpad.net/${_pkgname}/${pkgmainver}/${pkgver}/+download/${_pkgname}-${pkgver}.tar.bz2")
md5sums=('c5f9d81bd8f3a731ce1a61ee1dd82378')

build() {
	cd $srcdir/deja-dup-${pkgver} 
	./configure --prefix=${pkgdir}/usr --sysconfdir=${pkgdir}/etc || return 1
	make || return 1
	make install || return 1
	rm -f ${pkgdir}/usr/share/icons/hicolor/icon-theme.cache
}
