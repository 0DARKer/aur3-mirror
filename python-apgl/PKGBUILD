# Maintainer: Phil Schaf <flying-sheep@web.de>
pkgname=python-apgl
pkgver=0.7.2
pkgrel=1
pkgdesc='A simple, fast and easy to use Python graph library using NumPy, Scipy and PySparse'
arch=('any')
url='http://python-graph.googlecode.com'
license=('LGPL')
depends=('python' 'python-numpy' 'python-scipy')
source=("http://downloads.sourceforge.net/project/apythongraphlib/release/$pkgver/apgl-$pkgver.tar.gz")
sha1sums=('93cb8f469d066ef085da8f36a48e31a79ac2df9c')

package() {
	cd "$srcdir/apgl-$pkgver"
	python setup.py install --root="$pkgdir/" --optimize=1
}
