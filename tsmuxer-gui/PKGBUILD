# Contributor: Benjamin Bukowski <crankidiot(at)gmail(dot)com>
pkgname=tsmuxer-gui
pkgver=1.10.6
pkgrel=7
pkgdesc='Transport Stream muxer - gui only'
arch=('i686' 'x86_64')
url="http://www.smlabs.net/tsmuxer_en.html"
license=('custom')
depends=('tsmuxer')
if [ "$CARCH" == "i686" ]; then
	depends=(${depends} 'qt' 'gtk2')
else
	depends=(${depends} 'lib32-qt' 'lib32-gtk' 'lib32-libpng12');
fi
source=("http://www.smlabs.net/tsMuxer/tsMuxeR_shared_${pkgver}.tar.gz")
md5sums=('1f2e2a609d1a2dc8808ad3b3641733f7')

build() {
	cd $srcdir/
	install -D -m755 tsMuxerGUI $pkgdir/opt/tsMuxeR/tsMuxerGUI
	install -m755 -d $pkgdir/usr/bin
	ln -s /opt/tsMuxeR/tsMuxerGUI $pkgdir/usr/bin/tsMuxerGUI
}

