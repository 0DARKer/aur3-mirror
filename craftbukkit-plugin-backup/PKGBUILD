# Maintainer: Sebastian KÃ¶hler <sebkoehler@whoami.org.uk>
pkgname=craftbukkit-plugin-backup
pkgver="1.5"
pkgrel=1
pkgdesc="Backup plugin for Bukkit"
arch=(any)
url="https://github.com/Meldanor/Backup"
license=('GPL')
depends=('craftbukkit')
source=('https://github.com/downloads/Meldanor/Backup/Backup.zip')
md5sums=('1235ec6cfb032a9d733b47a883f5e710')

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins/Backup"
  install -m 644 "$srcdir/Backup.jar" "$pkgdir/opt/craftbukkit/plugins"
  install -m 644 "$srcdir/config.ini" "$pkgdir/opt/craftbukkit/plugins/Backup"
}

