pkgname=craftbukkit-plugin-backup
pkgver="2.5"
pkgrel=1
pkgdesc="Backup plugin for Bukkit"
arch=(any)
url="http://bukkitbackup.com/"
license=('GPL')
depends=('craftbukkit>=1.4.7r1.0')
source=('http://dev.bukkit.org/media/files/708/791/Backup.jar')
md5sums=('8387c27714692864b2459d9ad67c43dc')

package() {
  find . -name '*.jar' | xargs -rtl1 -I {} install -Dm644 {} "$pkgdir/srv/craftbukkit/plugins/"{}
}

