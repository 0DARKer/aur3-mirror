#Contributor: allencch <allencch at hotmail dot com>
pkgname=meme
pkgver=4.9.0_4
pkgrel=1
pkgdesc="The MEME suite provides tools for discovering and using protein and DNA sequence motifs"
arch=('i686' 'x86_64')
url="http://meme.nbcr.net/meme/intro.html"
license=('custom')
depends=(perl-html-template tcsh)
source=("http://ebi.edu.au/ftp/software/MEME/4.9.0/${pkgname}_${pkgver}.tar.gz")
md5sums=('e18b4318e841c3b6be034e53492581d6')

package() {
	cd "${srcdir}/${pkgname}_${pkgver%_4}"
	./configure --prefix=/usr --program-prefix="meme-"
	make
	make prefix="${pkgdir}/" install
}

