#Contributor: allencch <allencch at hotmail dot com>
pkgname=meme
pkgver=4.9.1_1
pkgrel=1
pkgdesc="The MEME suite provides tools for discovering and using protein and DNA sequence motifs"
arch=('i686' 'x86_64')
url="http://meme.sdsc.edu/meme/intro.html"
license=('custom')
depends=(perl-html-template tcsh)
source=("http://ebi.edu.au/ftp/software/MEME/4.9.1/${pkgname}_${pkgver}.tar.gz")
md5sums=('898cae9055c5afb6f4ba17a8fe3c556d')

package() {
	cd "${srcdir}/${pkgname}_${pkgver%_1}"
	./configure --prefix=/usr --program-prefix="meme-" --docdir='${prefix}'/usr/share/doc/meme --sysconfdir='${prefix}'/../etc/meme
	make
	make prefix="${pkgdir}/usr" install
}

