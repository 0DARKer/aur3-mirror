#Contributor: allencch <allencch at hotmail dot com>
pkgname=meme
pkgver=4.9.0
pkgrel=2
pkgdesc="The MEME suite provides tools for discovering and using protein and DNA sequence motifs"
arch=('i686' 'x86_64')
url="http://meme.sdsc.edu/meme/intro.html"
license=('custom')
depends=(perl-html-template tcsh)
source=("ftp://ftp.ebi.edu.au/pub/software/MEME/r4.9.0/rc5/${pkgname}_${pkgver}.tar.gz")
md5sums=('6b454caf27fbffa08f51dacb6c3930c1')

build() {
	cd "${srcdir}/${pkgname}_${pkgver}"
	./configure --prefix=/usr --program-prefix="meme-"
	#sed -i "s/PROG => 'purge'/PROG => 'meme-purge'/" scripts/MemeWebUtils.pm.in
	sed -i "s|tar xzvf |#tar xzvf |g" "doc/examples/Makefile"
	make DESTDIR="${pkgdir}/" install

	sed -i "s|#tar xzvf |tar xzvf |g" "doc/examples/Makefile"
	cd doc/examples
	make exdir="${pkgdir}/usr/doc/examples" install-data-hook
}

