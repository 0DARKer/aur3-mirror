# Author:     Tim Reddehase <robustus@rightsrestricted.com>

pkgname=serverprint
pkgver=0.0.5
pkgrel=1
pkgdesc="printing on a remote printer via ssh"
arch=('any')
url="https://github.com/0robustus1/serverprint"
license=('MIT')
depends=('perl' 'poppler')
source=("https://github.com/0robustus1/serverprint/archive/0.0.5.tar.gz")
sha1sums=('a2593aaf51ff4d4d3bd9ffdf3724de16bbb8024d')
provides=('serverprint')
conflicts=('serverprint')

package() {
  mkdir -p "$pkgdir/usr/"
  cd "$srcdir/$pkgname-$pkgver"
  mv "bin" "$pkgdir/usr/bin"
  mv "lib" "$pkgdir/usr/lib"
  mv "share" "$pkgdir/usr/share"
}
