# Maintainer: danyf90 <daniele.formichelli@gmail.com>

pkgname=portolan
pkgver=beta
pkgrel=1
pkgdesc="Portolan internet measurement tool"
arch=('any')
depends=('java-runtime>=6' 'wireless_tools')
license=('custom')
url="http://portolan.iet.unipi.it/"
install=$pkgname.install
source=("http://portolan.iet.unipi.it/wordpress/wp-content/uploads/2014/11/portolan.tar.gz")
sha512sums=('2a8d2b05b3cc4c9e7a6e6ae637131e0407abb25d99804b862c7d50a0ab7a1c0c12c555cd46a92d097bc47bf27df858b3d6e1224fa1397b5e50cdf4c3971d17f9')

package() {
  cd $srcdir/$pkgname/linux

  # Remove final wait and set installation directory
  sed -i "s/read.*//" install.sh
  export DESTDIR=$pkgdir

  ./install.sh > /dev/null

  # Remove unused file
  rm -r $pkgdir/etc
  rm $pkgdir/usr/share/$pkgname/uninstall.sh
}