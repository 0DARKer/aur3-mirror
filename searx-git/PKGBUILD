# Maintainer: Reventlov <contact+aur@volcanis.me>
pkgname=searx-git
pkgver=1
pkgrel=3
pkgdesc="A privacy-respecting, hackable metasearch engine"
arch=('any')
url="https://searx.0x2a.tk/"
license=('AGPL')
groups=()
depends=('python2-flask' 'python2-flask-babel' 'python2-grequests' 'python2-lxml' 'python2-yaml' 'python2-dateutil')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=('usr/lib/python2.7/site-packages/searx/settings.yml')
options=()
install=searx.install
source=('searx.install')
noextract=()
md5sums=('2d8ffb6ccbda5286cf5f0a002702bc11') #generate with 'makepkg -g'

_gitroot='https://github.com/asciimoo/searx.git'
_gitname='searx'

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
   msg "Starting build..."
   cd "$srcdir/$_gitname-build"
   python2 setup.py install --root="$pkgdir/" --optimize=1
}

