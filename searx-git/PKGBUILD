# Maintainer: Reventlov <contact+aur@volcanis.me>
pkgname=searx-git
pkgver=r623.3386e21
pkgrel=1
pkgdesc="A privacy-respecting, hackable metasearch engine"
arch=('any')
url="https://searx.0x2a.tk/"
license=('AGPL')
depends=('python2-flask' 'python2-flask-babel' 'python2-grequests' 'python2-lxml' 'python2-yaml' 'python2-dateutil')
makedepends=('git')
backup=('usr/lib/python2.7/site-packages/searx/settings.yml')
install=searx.install
source=("$pkgname"::'git+https://github.com/asciimoo/searx.git' 'searx.install')
noextract=()
md5sums=(SKIP
'2d8ffb6ccbda5286cf5f0a002702bc11')

pkgver() {
  cd "$srcdir/$pkgname"
  printf 'r%s.%s' "$(git rev-list --count HEAD)" "$(git describe --always)"
}

package() {
   msg "Starting build..."
   cd "$srcdir/$pkgname"
   python2 setup.py install --root="$pkgdir/" --optimize=1
}

