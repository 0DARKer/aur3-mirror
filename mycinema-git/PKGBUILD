# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=mycinema-git
pkgver=20110205
pkgrel=1
pkgdesc="Application to create your own movie collection retrieving information and photos from the biggest website databases"
url="https://sites.google.com/site/mycinemaproject/home"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('qt')
makedepends=('git')

_gitroot=git://gitorious.org/mycinema/mycinema.git
_gitname=mycinema

build() {
  cd $srcdir

  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull --rebase
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd mycinema/experimental
  qmake
  make
  install -Dm755 mycinema $pkgdir/usr/bin/mycinema
}