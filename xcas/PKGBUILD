# Contributor: Calimero <calimeroteknik at free dot fr>
# Maintainer: Laurent Hofer <laurenth at laurenth dot net>
pkgname=xcas
pkgver=1.1.0
pkgrel=24
pkgdesc="Xcas Computer Algebra System"
arch=('i686' 'x86_64')
url="http://www-fourier.ujf-grenoble.fr/~parisse/giac.html"
license=('GPL3')
depends=('mesa' 'perl' 'libgl' 'fltk-giac' 'mpfr' 'pari' 'gsl' 'lapack' 'ntl' 'desktop-file-utils' 'cocoalib')
makedepends=('latex2html' 'readline') 
provides=('xcas' 'giac')
conflicts=('xcas-bin')
install=xcas.install
_baseurl='http://www-fourier.ujf-grenoble.fr/~parisse/giac/'
_sourcefile="giac-${pkgver}.tar.bz2"
source=("${_baseurl}/${_sourcefile}") 
md5sums=("$(curl -s "$_baseurl/md5sum.txt" |sed -nE "/ ${_sourcefile}\$/s/^([^[:space:]]+).*\$/\1/p")")

build() {
  CXXFLAGS='-fpermissive'
  LDFLAGS='-lX11'
  cd "$srcdir/giac-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/giac-$pkgver"
  make DESTDIR="$pkgdir/" install
}
