# Contributor: Calimero <calimeroteknik at free dot fr>
pkgname=xcas
pkgver=0.9.2
pkgrel=1
pkgdesc="XCas math and algebra suite"
arch=('i686' 'x86_64')
url="http://www-fourier.ujf-grenoble.fr/~parisse/giac.html"
depends=('mpfr' 'fltk' 'pari' 'gsl' 'latex2html')
makedepends=('texlive-pstricks' 'hevea')
license=('GPL')
_basesource="giac-${pkgver}.tar.gz"
source=(ftp://ftp-fourier.ujf-grenoble.fr/xcas/${_basesource})

#experimental : dynamic md5 because of frequent fixes.
md5sums="`wget -qO - ftp://ftp-fourier.ujf-grenoble.fr/xcas/md5sums.txt |grep "$_basesource" |cut -d' ' -f1`"

build() {
 cd "$srcdir"/giac-$pkgver
 ./configure --prefix=/usr || return 1
 make || return 1
 make prefix=$pkgdir/usr install || return 1
}
