# Contributor: Simo Leone <simo@archlinux.org>

pkgname=libticonv
pkgver=1.1.1
pkgrel=1
pkgdesc="TI character set conversion library"
arch=(i686 x86_64)
url="http://tilp.info/"
license=("GPL")
depends=('glib2')
options=('!libtool')
source=(http://lpg.ticalc.org/prj_tilp/download/libticonv-$pkgver.tar.bz2)

build() {
  cd $startdir/src/libticonv-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('23a85532e4b6a4130ebdf7350c42b89d')
