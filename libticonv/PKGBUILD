# Contributor: Simo Leone <simo@archlinux.org>

pkgname=libticonv
pkgver=1.1.2
pkgrel=1
pkgdesc="TI character set conversion library"
arch=(i686 x86_64)
url="http://tilp.info/"
license=("GPL")
depends=('glib2')
source=("http://downloads.sourceforge.net/project/tilp/tilp2-linux/tilp2-1.15/${pkgname}-${pkgver}.tar.bz2")

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}
md5sums=('8e7087c0272582fce3a5cbc85e76426d')
