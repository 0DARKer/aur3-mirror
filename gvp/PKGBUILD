# Maintainer: wicast <wicastchen at hotmail>
# Contributor: Pablo Astigarraga <pote at tardis.com.uy>

pkgname=gvp
pkgver=0.2.0.r6.g0c555b6
pkgrel=1
pkgdesc="Go Versioning Packager."
arch=("any")
url="https://github.com/pote/gvp"
license=('MIT')
groups=()
depends=("go")
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("$pkgname::git+https://github.com/pote/gvp.git")
md5sums=('SKIP')
noextract=()

pkgver() {
  cd "$pkgname"
  git describe --tags --long | sed -r 's/^v//;s/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir/${pkgname}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/${pkgname}"
  make prefix="$pkgdir/usr/" install
}
