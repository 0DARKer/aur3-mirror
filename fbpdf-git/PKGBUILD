# Maintainer: Tetsumaki <http://goo.gl/YMBdA>

pkgname=fbpdf-git
_gitname=fbpdf
pkgver=20130411
pkgrel=1
pkgdesc="A small framebuffer pdf viewer, based on MuPDF"
arch=('i686' 'x86_64')
url="http://repo.or.cz/w/fbpdf.git"
license=('custom')
depends=('mupdf')
makedepends=('git')
optdepends=('apache: is depedency if you do not use lighttpd or nginx'
            'lighttpd'
            'nginx'
            'wget: for automatic updating feeds with cron')
source=('git://repo.or.cz/fbpdf.git'
        'fbpdf.1'
        'LICENSE')
sha1sums=('SKIP'
          'f9a0cc6beb0e118b1116e08c5a0b91a028f8177e'
          '76a535243054e1fdd9caaa46a1571cd381d74353')

pkgver() {
	cd "${_gitname}"
	git log -1 --format="%cd" --date=short | tr -d '-'
}

build(){
	cd "${_gitname}"
	make fbpdf
}


package() {
	cd "${srcdir}"
	install -Dm755 "${srcdir}/${_gitname}/${_gitname}" "${pkgdir}/usr/bin/${_gitname}"
	install -Dm644 "${srcdir}"/LICENSE "${pkgdir}/usr/share/licenses/${_gitname}/LICENSE"
	install -Dm644 "${srcdir}/${_gitname}.1" "$pkgdir/usr/share/man/man1/${_gitname}.1"
}