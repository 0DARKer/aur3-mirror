# Contributor: Tetsumaki <http://goo.gl/YMBdA>
# Maintainer: aksr <aksr at t-com dot me>
pkgname=fbpdf-git
pkgver=0.r75.db5da40
pkgrel=1
pkgdesc="A small framebuffer pdf viewer, based on MuPDF"
arch=('i686' 'x86_64')
url="http://repo.or.cz/w/fbpdf.git"
#url="http://litcave.rudi.ir/"
license=('custom')
groups=()
depends=('mupdf' 'poppler' 'djvulibre' 'openjpeg2')
makedepends=('git')
optdepends=('poppler' 'djvulibre')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=fbpdf-git.install
source=('fbpdf.1' 'LICENSE')
noextract=()
md5sums=('ae7299de0fcd8e945940b014ba335c1b'
         'ec67f29a7dec10f86ef31515ed657a91')
sha1sums=('f9a0cc6beb0e118b1116e08c5a0b91a028f8177e'
          '76a535243054e1fdd9caaa46a1571cd381d74353')
#options=(!strip)

_gitroot=git://repo.or.cz/fbpdf.git
_gitname=fbpdf

pkgver() {
  cd "$srcdir/$_gitname"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  sed -i 's/lopenjpeg/lopenjp2/' Makefile

  make all
  make fbpdf2
}

package() {
  cd "$srcdir/$_gitname-build"

  install -Dm755 fbpdf           $pkgdir/usr/bin/fbpdf
  install -Dm755 fbpdf2          $pkgdir/usr/bin/fbpdf2
  install -Dm755 fbdjvu          $pkgdir/usr/bin/fbdjvu
  install -Dm644 README          $pkgdir/usr/share/doc/$pkgname/README
  install -Dm644 $srcdir/fbpdf.1 $pkgdir/usr/share/man/man1/fbpdf.1
  install -Dm644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE

}

# vim:set ts=2 sw=2 et:
