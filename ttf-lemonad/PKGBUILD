makedepends=('unrar')
noextract=(${source[@]##*/})

build() {
  cd $srcdir
  for n in *.rar; do unrar -y e $n; done
}

package(){
  install -d $pkgdir/usr/share/fonts/OTF/lemonad
  find . -iregex ".*\.otf" -exec cp {} $pkgdir/usr/share/fonts/OTF/lemonad \;
}
