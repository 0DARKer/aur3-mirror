# Contributor: Jed Brown <jed@59A2.org>
pkgname=(parmetis)
_prefix=/usr
pkgver=4.0
pkgrel=1
pkgdesc="A parallel graph partitioning library"
url="http://glaros.dtc.umn.edu/gkhome/metis/parmetis/overview"
arch=('i686' 'x86_64')
license="custom"
depends=()
makedepends=(cmake)
conflicts=()
replaces=()
provides=(metis)
backup=()
source=(http://glaros.dtc.umn.edu/gkhome/fetch/sw/parmetis/parmetis-$pkgver.tar.gz)
md5sums=('856dbbd43c12d97cb6a0dc583e6361d5')

build() {
  cd $srcdir/parmetis-$pkgver
  make config cc=mpicc shared=1 prefix=/usr
  make
}

package () {
  cd $srcdir/parmetis-$pkgver
  make install DESTDIR=$pkgdir
}
