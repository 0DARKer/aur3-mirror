# Maintainer: Matthias Maennich <arch@maennich.net>

pkgname=flyhigh
pkgver=0.8.2
pkgrel=1
pkgdesc="Use your flight devices with Linux"
arch=('i686' 'x86_64')
url="http://flyhigh.sourceforge.net"
license=('GPL')
depends=('qt' 'gnuplot' 'mysql')
makedepends=('cmake')
optdepends=()
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
sha256sums=('08ccd656ff79cb212dd2faaf17e64620e4f1300400d2d3e77d79fb8edade599c')

build() {
  mkdir -p ${srcdir}/$pkgname-$pkgver/build

  cd ${srcdir}/$pkgname-$pkgver/build

  cmake -DCMAKE_INSTALL_PREFIX= -DCMAKE_BUILD_TYPE=Release ..
  
  make
}

package(){
  cd ${srcdir}/$pkgname-$pkgver/build

  make DESTDIR=${pkgdir} install
}
