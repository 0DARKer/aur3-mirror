# Maintainer: Vinícius dos Santos Oliveira <vini.ipsmaker@gmail.com>
pkgname=tufao-doc
pkgver=0.2.1
pkgrel=1
pkgdesc="The Tufão documentation"
arch=(any)
url="http://tufao.googlecode.com/"
license=('FDL1.3')
depends=('tufao')
source=('http://tufao.googlecode.com/files/tufao-0.2.1-doc.tar.bz2')
md5sums=('fd0f43d0b21bc7d12f3c02b3d714765b')

package() {
  cd "$srcdir"

  mkdir -p $pkgdir/usr/share/doc/tufao
  cp -r doc/* $pkgdir/usr/share/doc/tufao
}
