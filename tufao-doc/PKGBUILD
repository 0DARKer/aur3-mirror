pkgname=tufao-doc
pkgver=0.3.0
pkgrel=1
pkgdesc="The Tufão documentation"
arch=(any)
url="http://tufao.googlecode.com/"
license=('MIT')
depends=()
source=('http://tufao.googlecode.com/files/tufao-0.3-doc.zip')
md5sums=('2308c2937b36762decce471a93c1d244')

package() {
  cd "$srcdir"

  mkdir -p $pkgdir/usr/share/doc/tufao
  cp -r doc/* $pkgdir/usr/share/doc/tufao
}
