# Contributor: Oleg Finkelshteyn <olegfink@gmail.com>
pkgname=ripit
pkgver=3.7.0
pkgrel=1
pkgdesc="easy command line tool to encode audio CDs"
arch=('any')
url="http://www.suwald.com/ripit/"
license=('GPL')
depends=('perl' 'cdparanoia')
optdepends=(
  'cddb_get: Tagging (CDDB)'
  'flac: Encoding (FLAC)'
  'lame: Encoding (MP3)'
  'vorbis-tools: Encoding (Vorbis)'
  'normalize: Normalizing'
  'perl-libwww: Submitting to CDDB' 
)
source=($url/$pkgname-$pkgver.tar.bz2)
md5sums=('f1553013cbc4dfc237e701341ea6182a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" INSTALL=/bin/install install
}

# vim:set ts=2 sw=2 et:
