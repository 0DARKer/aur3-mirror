# Maintainer: Levente Polyak <levente[at]leventepolyak[dot]net>

pkgname=valabind
pkgver=0.8.0
pkgrel=1
pkgdesc="Tool to parse vala or vapi files to transform them into swig interface files, C++, NodeJS-ffi or GIR"
url="http://radare.org"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('vala' 'swig' 'sh')
source=(https://github.com/radare/${pkgname}/archive/${pkgver}.tar.gz)
sha256sums=('75c4ed49f1624d8dee75facd4067f0e7de60a477b47f7981c4d7921c65e06a5b')

build() {
  cd ${pkgname}-${pkgver}
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}

