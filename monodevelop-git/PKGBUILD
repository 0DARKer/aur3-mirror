# Contributor: Timm Preetz <timm@preetz.us>
# Contributor: Giovanni Scafora <giovanni@archlinux.org>

pkgname=monodevelop-git
_pkgname=monodevelop
pkgver=20110625
pkgrel=1
pkgdesc="An IDE with support for Mono, C, C++, Vala, Java, Python..."
arch=('any')
url="http://www.monodevelop.org"
license=('GPL')
depends=('mono>=2.8' 'mono-addins-git' 'gnome-sharp' 'gnome-desktop-sharp' 'mono-debugger>=2.0' 'hicolor-icon-theme' 'vala>=0.12' 'desktop-file-utils')
makedepends=('git' 'pkg-config')
provides=('monodevelop')
conflicts=('monodevelop')
install=monodevelop-git.install
_gitroot="git://github.com/mono/monodevelop.git"
_gitname="monodevelop"

build() {
	cd "$srcdir"
	msg "Performing source checkout..."
	if [ -d "$_gitname" ]; then
		cd "$_gitname"
		git pull origin || return 1
		cd ..
	else
		git clone "$_gitroot" || return 1
	fi
	msg "Source checkout finished."
	rm -rf "$_gitname-build"
	git clone "$_gitname" "$_gitname-build" || return 1
    cd "$_gitname-build"

    #custom profile with everything that doesn't break during build
    echo "main" > profiles/custom
    echo "extras/JavaBinding" >> profiles/custom
    echo "extras/ValaBinding" >> profiles/custom
    #echo "extras/BooBinding" >> profiles/custom
    echo "extras/MonoDevelop.Database" >> profiles/custom
    #echo "extras/MonoDevelop.Debugger.Mdb" >> profiles/custom
    echo "extras/MonoDevelop.Debugger.Gdb" >> profiles/custom
    echo "extras/PyBinding" >> profiles/custom
    #echo "extras/MonoDevelop.IPhone" >> profiles/custom
    #echo "extras/MonoDevelop.MonoMac" >> profiles/custom
    #echo "extras/MonoDevelop.MeeGo" >> profiles/custom
    #echo "extras/MonoDevelop.MonoDroid" >> profiles/custom

    ./configure --prefix=/usr --profile=custom
    make || return 1
}

package() {
  cd "$_gitname-build"
  make DESTDIR=$pkgdir install
  rm -r $pkgdir/usr/share/mime #FIXME !
}

