pkgname=linux-firmware-free
pkgver=3.1
pkgrel=1
pkgdesc='Free Firmware files for Linux'
arch=('any')
url='http://svn.debian.org/wsvn/kernel/dists/trunk/firmware-free/'
license=('GPL2' 'GPL3' 'MPL')
provides=('linux-firmware')
conflicts=('linux-firmware')
replaces=('linux-firmware')
source=(http://ftp.debian.org/debian/pool/main/f/firmware-free/firmware-linux-free_${pkgver}_all.deb)
sha256sums=('b7d938dd25bee94ae496bcdb8fe6f2f12814abc4f2fd63ab6276e0a16ac6c548')

package() {
	cd "$srcdir"
	install -d $pkgdir/usr
	tar -xf data.tar.gz -C $pkgdir/usr --exclude usr
}
