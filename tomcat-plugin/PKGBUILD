# Contributor:		osily <ly50247@gmail.com>

pkgname=tomcat-plugin
pkgver=3.2.1
pkgrel=1
pkgdesc="A eclipse plugin to use tomcat better."
arch=('any')
url="http://www.eclipsetotale.com/tomcatPlugin.html"
license=('GPL')
depends=('eclipse')
source=("http://www.eclipsetotale.com/tomcatPlugin/tomcatPluginV321.zip")
md5sums=('1385d911362e0ff994d8af66c75c26de')

build() {
cd "${srcdir}/${_realname}"
install -d "${pkgdir}/usr/share/eclipse/plugins"
cp -r "${srcdir}/com.sysdeo.eclipse.tomcat_3.2.1" "${pkgdir}/usr/share/eclipse/plugins"
}
