# Maintainer: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=jumpnbump
pkgver=1.55
pkgrel=2
pkgdesc="A unix port of the old DOS platform game"
arch=('i686' 'x86_64')
url="http://freecode.com/projects/jumpnbump"
license=('GPL')
depends=('sdl_mixer' 'sdl_net')
source=("http://gnu.ethz.ch/jumpbump.mine.nu/port/${pkgname}-${pkgver}.tar.gz")
md5sums=('165873fca1c7164eb08b4875f9e7da07')

build() {
  cd "${srcdir}/${pkgname}-1.50"
  ./configure --prefix=/usr --mandir=/usr/share/man || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-1.50"
  make DESTDIR="${pkgdir}" install || return 1
}
