# Maintainer: Alexandre GENIN <bellette *pwet* tuxfamily[dot]org>
pkgname=hdrstack
pkgver=1.2
pkgrel=1
pkgdesc="Stack multiple images to create an HDR image in Gimp"
url="http://bellette.tuxfamily.org/carnets/?p=444"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('hugin' 'gimp' 'imagemagick' 'zenity' 'gimp-ufraw')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=(
"http://bellette.tuxfamily.org/files/HDRstack/${pkgname}-${pkgver}.tar.gz")
md5sums=('4d8f6ba029c197adb3ee8712d9352173')

build() {
  cd $srcdir
  
  install -D -m 755 HDRstack $pkgdir/usr/bin/HDRstack
  install -D HDRstack.desktop $pkgdir/usr/share/applications/HDRstack.desktop
}
