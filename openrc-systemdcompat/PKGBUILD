# Maintainer: Aaditya Bagga <aaditya_gnulinux@zoho.com>

pkgname=openrc-systemdcompat
pkgver=0.4
pkgrel=3
pkgdesc="substitutes of systemd components for openrc"
arch=('i686' 'x86_64')
license=('GPL')
groups=('openrc')
url="https://sourceforge.net/projects/mefiles/files/Manjaro/openrc-systemdcompat/"
depends=('openrc-core')
optdepends=('modules-load-openrc: for compatibility loading of modules')
#conflicts=('systemd')
source=('https://sourceforge.net/projects/mefiles/files/Manjaro/openrc-systemdcompat/any/systemctl'
	"https://sourceforge.net/projects/mefiles/files/Manjaro/openrc-systemdcompat/$(uname -m)/systemd-tmpfiles"
	'https://sourceforge.net/projects/mefiles/files/Manjaro/openrc-systemdcompat/any/modules-load.sh')
sha1sums=('8af8d82d159ff7f6a94be574ae9ff5bea067a34d'
          '578b23342550bb49dd599f2f5e88e717a4a1949b'
          '5b6ff7f9d677c177413cd755659ca9b4ede0620e')

[ "$CARCH" == "i686" ] && sha1sums[1]='702b56ae467ab2c7321a63847beff29d53d60224'

package() {
  install -Dm 755 systemctl $pkgdir/usr/bin/systemctl
  install -Dm 755 systemd-tmpfiles $pkgdir/usr/bin/systemd-tmpfiles
  install -Dm 755 modules-load.sh $pkgdir/usr/bin/modules_load
}
