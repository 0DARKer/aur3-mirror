pkgname=pdf-parser
pkgver=0.3.7
pkgrel=1
pkgdesc="Pdf-parser parse a PDF document to identify the fundamental elements used in the analyzed file"
arch=('any')
url="http://blog.didierstevens.com/programs/pdf-tools/"
license=('custom')
depends=('python<=2.6.5')
source=("http://www.didierstevens.com/files/software/pdf-parser_V0_3_7.zip")

md5sums=('bdc0e5a82eb6d7c287e7360d8901023d')
sha512sums=('3528b1b7fd5dbcfb8da84e66738dca8ca23dbd2b9940e2aff7056bd606dd44a7686ec842ac03dd44950296b3f255fbcd95b3c546ad434ab1989253de2a5eacc9')

build()
{
 mkdir -p $pkgdir/usr/bin/
 sed -i 's/__maximum_python_version__ = (2, 6, 2)/__maximum_python_version__ = (2, 6, 5)/g' $srcdir/$pkgname.py
 cp $srcdir/$pkgname.py $pkgdir/usr/bin/$pkgname
}
