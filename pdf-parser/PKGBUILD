pkgname=pdf-parser
pkgver=0.3.7
pkgrel=3
pkgdesc="Parse a PDF document to identify the fundamental elements used in the analyzed file"
arch=(any)
url=http://blog.didierstevens.com/programs/pdf-tools/
license=(custom)
depends=('python2>=2.5.1')
source=($pkgname.patch http://www.didierstevens.com/files/software/${pkgname}_V$(echo $pkgver | sed 's:\.:_:g').zip)
sha256sums=('0d9285996c25d3be46468c4f474b3565c3c8779b94d9cef6c20fd4ad244b853d'
    'c83d39f8938a00a3eb2bde3134efaf3a2be11e72c2c8a92841d4e1e82366d7e1')
sha512sums=('0f33a42efa0033d0939cc77a2412ff314644e99a8701976160ceabc17078bdb991c9804455db41989e04566ff3bb094e1bb82818de082e1b221e41f0ee40f02d'
    '3528b1b7fd5dbcfb8da84e66738dca8ca23dbd2b9940e2aff7056bd606dd44a7686ec842ac03dd44950296b3f255fbcd95b3c546ad434ab1989253de2a5eacc9')

package() {
    cd "$srcdir"
    patch -Np0 -i $pkgname.patch
    install -Dm755 $pkgname.py "$pkgdir"/usr/bin/$pkgname
}
