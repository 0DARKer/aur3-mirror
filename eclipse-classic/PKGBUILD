# Maintainer: Michael P <ptchinster@archlinus.us>
# Contributor: Alessio Fachechi <alessio.fachechi@gmail.com>
pkgname=eclipse-classic
_pkgname=eclipse
pkgver=3.5.2
pkgrel=6
pkgdesc="An IDE for Java and other languages"
arch=("i686" "x86_64")
url="http://www.eclipse.org/"
license=('EPL/1.1')
depends=("java-environment")
provides=(eclipse=$pkgver)
conflicts=(eclipse)
source=(http://repository.jboss.org/eclipse/galileo/eclipse-SDK-3.5.2-linux-gtk.tar.gz)
install="eclipse.install"
md5sums=('bde55a2354dc224cf5f26e5320e72dac')

build() {
  cd "$srcdir"
  mkdir -p ${pkgdir}/usr/share/{applications,pixmaps}
  mv "$_pkgname" "$pkgdir/usr/share/" || return 1

  install "$pkgdir/usr/share/eclipse/icon.xpm" "$pkgdir/usr/share/pixmaps/eclipse.xpm" || return 1
}

