post_install() {
  ln -s /usr/share/eclipse/eclipse /usr/bin/eclipse
  groupadd eclipse
  chgrp -R eclipse /usr/share/eclipse
  chmod -R g+w /usr/share/eclipse
  echo "If you want to modify eclipse, like do updates, you have to belong to eclipse group:"
  echo "  # gpasswd -a YOUR_USERNAME eclipse"
}

post_remove() {
  rm -rf /usr/share/eclipse
  unlink /usr/bin/eclipse
}

