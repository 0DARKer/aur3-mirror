# Maintainer: Denis Sheremet <zaycakitayca@xaker.ru>
pkgname=gnome-menu-editor-qt
pkgver=0.0.4
pkgrel=1
pkgdesc="Simple alacarte replacement, written on qt. Gnome menu editor for systems with no gtk3 support"
url="http://lxlz.tk"
arch=('x86_64' 'i686')
license=('custom:WTFPL')
depends=('qt5-base')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("https://www.dropbox.com/s/4tbhwydva6iqosw/gnome-menu-editor-qt-0.0.4.tar.gz?dl=1")
md5sums=('c16303d7dd854ba9b3ea908336fc0f31')

build() {
  cd "${srcdir}"
  qmake gnome-menu-editor-qt.pro
  make
}

package() {
  cd "${srcdir}"
  install -Dm755 gnome-menu-editor-qt "$pkgdir/usr/bin/$pkgname"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  install -Dm644 *desktop* "$pkgdir/usr/share/applications/$pkgname.desktop"
}

