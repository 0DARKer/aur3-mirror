pkgname=mozplugger-chromium
pkgver=1.14.2
pkgrel=1
pkgdesc="A Mozilla multimedia plugin for Chromium"
arch=('x86_64' 'i686')
url="http://mozplugger.mozdev.org"
license=('GPL')
depends=('m4' 'libx11')
backup=('etc/mozpluggerrc')
makedepends=('setconf')
source=(http://mozplugger.mozdev.org/files/mozplugger-$pkgver.tar.gz)
md5sums=('76c4e2cdf14e41b6df1d60bd1a2f249d')

build() {
  cd mozplugger-$pkgver
  setconf mozplugger.c "((NPBool *)value)" 1
  make linux
}

package() {
  cd mozplugger-$pkgver
  make install root="$pkgdir"
}

