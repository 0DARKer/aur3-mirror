# Contributor: rabyte <rabyte__gmail>

pkgname=shapefusion
pkgver=0.5
pkgrel=1
pkgdesc="A scenario editor for the AlephOne game engine"
arch=('i686' 'x86_64')
url="http://shapefusion.sourceforge.net/"
license=('GPL2')
depends=('wxgtk>=2.8')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tgz)
md5sums=('cf6b88f595e7127f7b6ad5bc2872c034')

build() {
  cd $srcdir/$pkgname-$pkgver

  sed '1i#include <string.h>' -i GenericEndianBuffer.cpp

  make CFLAGS="${CFLAGS}" || return 1

  install -m755 -D $pkgname $pkgdir/usr/bin/$pkgname
}

# vim:set ts=2 sw=2 et:
