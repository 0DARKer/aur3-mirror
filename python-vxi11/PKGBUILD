# Maintainer: Alex Forencich <alex@alexforencich.com>
pkgname=python-vxi11
pkgver=0.5
pkgrel=1
pkgdesc="A Python VXI-11 driver for controlling instruments over Ethernet."
arch=('any')
url="https://github.com/alexforencich/python-vxi11"
license=('MIT')
depends=('python')

source=("python-vxi11-$pkgver.tar.gz::https://github.com/alexforencich/python-vxi11/archive/v$pkgver.tar.gz")
md5sums=('780f18465154ae67cb03e411029d0b3c')

build() {
  cd "$srcdir/python-vxi11-$pkgver"
}

package() {
  cd "$srcdir/python-vxi11-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

