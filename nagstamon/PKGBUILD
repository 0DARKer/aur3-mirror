pkgname=nagstamon
pkgver=0.9.8
pkgrel=1
pkgdesc="Nagios status monitor for the desktop"
depends=('python' 'python2')
arch=('any')
url="http://nagstamon.ifw-dresden.de/"
license=('GPL')
source=("http://sourceforge.net/projects/nagstamon/files/nagstamon/nagstamon%200.9.8/nagstamon_$pkgver.tar.gz" "nagstamon.desktop")
md5sums=('792c85018a59345625171473b39d9865'
         'f274480000005c2e9147846fdb49feff')

build() {
  cd "$srcdir/Nagstamon"
  python2 setup.py install --prefix=/usr --root="$pkgdir"
  install -Dm644 "$srcdir/nagstamon.desktop" "$pkgdir/etc/xdg/autostart/nagstamon.desktop"
  ln -s /usr/bin/nagstamon.py $pkgdir/usr/bin/nagstamon
}

package() {
  return
}
