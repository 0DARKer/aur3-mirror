pkgname=ibus-chewing
pkgver=1.3.9.2
pkgrel=1
pkgdesc="Chinese Chewing Engine for IBus Framework"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://ibus.googlecode.com"
depends=('ibus>=1.3.9' 'libchewing>=0.3.2' 'libxtst' 'gob2')
makedepends=('swig' 'cmake' 'patch')
source=(http://ibus.googlecode.com/files/${pkgname}-${pkgver}-Source.tar.gz
        drop_packaging.patch)

build() {
    cd ${srcdir}/${pkgname}-${pkgver}-Source
    cmake -D CMAKE_INSTALL_PREFIX=/usr -D SYSCONF_INSTALL_DIR=/usr/share .
    make || return 1
    make DESTDIR=${pkgdir} install
}

sha1sums=('4cc1479e4055b217cfa28a009f9f92de41d95295'
          '35855fb4c91c894d40f2211cf20e9f2fe62987c7')
