# Maintainer: willwish <willwish@outlook.com>
pkgname=eunzip
pkgver=0.1
pkgrel=1
pkgdesc="A script for extracting and viewing zip files, with decoding filenames support"
arch=("any")
url="https://bitbucket.org/willwish/eunzip"
license=("MIT")
makedepends=("git")
depends=("python")
source=("git+https://bitbucket.org/willwish/${pkgname}.git#tag=v0.1")
md5sums=("SKIP")

package() {
  cd "${srcdir}"/${pkgname}
  install -Dm755 "eunzip" "${pkgdir}/usr/bin/eunzip"
  install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/eunzip/LISENSE"
}
