pkgname=mod_bwshare
pkgver=0.1.6
pkgrel=1
pkgdesc="An Apache module that throttles HTTP requests for each client IP address independently"
url="http://www.topology.org/src/bwshare/README.html"
depends=('apache' 'glibc')
install=$pkgname.install
source=(http://www.topology.org/src/bwshare/bwshare-$pkgver.zip)

build()
{

  mkdir -p $startdir/pkg/usr/lib/apache/
  cd $startdir/src/src/modules/bwshare

  #makes the module
  apxs -c -o mod_bwshare.so mod_bwshare.c
  cp .libs/mod_bwshare.so $startdir/pkg/usr/lib/apache
}
md5sums=('ca63be617bcbe79f47b6a11979c33aaf')
