# Contributor: graysky <graysky AT archlinux dot us>
pkgname=pulseaudio_ctl
pkgver=1.1
pkgrel=1
pkgdesc='Scripts to control pulseaudio volume from the shell. Useful when mapped to keyboard shortcuts under xfce4 for example.'
arch=('any')
license=('GPL')
source=(mute_toggle vol_up vol_down)
url=https://bbs.archlinux.org/viewtopic.php?id=124513
depends=('pulseaudio' 'gawk' 'sed' 'grep')
install=('readme.install')

package() {
	for i in mute_toggle vol_up vol_down; do
		install -D $i $pkgdir/usr/bin/$i
	done
}
sha256sums=('c5ff8fcfef303945ae2f3baf7889ca1d668f04e29ef9415556052eceb811d3e6'
            '678c2a85d6e025a358e9bae49735b7bb939ec4144b952a72118bf0bbec6f3389'
            '3de5255ed32ff9984734f2114cca1a86dc59941c9ad6550f4eb8771bc06a47cc')
