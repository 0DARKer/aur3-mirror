# Maintainer: PyrO_70 <brieuc.roblin at gmail dot com>
pkgname=batterysystemtray-git
pkgver=20100806
pkgrel=4
pkgdesc="A simple battery monitor in the system tray using UPower, in Qt."
arch=('i686' 'x86_64')
url="http://www.pyrotools.org/"
license=('GPL')
depends=('qt' 'upower')
optdepends=('ucpufreq-git: Chosing governor/frequency per cpu')
makedepends=('git')
replaces=('batterysystemtray-svn')

_gitroot="git://gitorious.org/ptbatterysystemtray/ptbatterysystemtray.git"
_gitname="ptbatterysystemtray"

build() {
  cd "$srcdir"

  msg2 "Connecting to gitorious ..."

  if [ -d $_gitname ] ; then
    ( cd $_gitname && git pull )
  else
    git clone $_gitroot $_gitname || return 1
  fi

  msg2 "Starting make..."
  
  cd "$_gitname"

  qmake || return 1
  lrelease -silent -compress PtBatterySystemTray.pro
  make || return 1

  #installing binary in pkgdir
  install -D -m755 PtBatterySystemTray "$pkgdir"/usr/bin/BatterySystemTray

  #notification image
  install -D -m644 src/image/ui/battery.png "$pkgdir"/usr/lib/BatterySystemTray/battery.png
}
