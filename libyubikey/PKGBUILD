# Contributor: Peter Hultqvist <endnode dot se>
pkgname=libyubikey
pkgver=1.7
pkgrel=1
pkgdesc="Yubico C low-level library"
arch=('i686' 'x86_64')
url="http://code.google.com/p/yubico-c/"
license=('custom:BSD')
depends=('libusb' 'glibc')
makedepends=('gcc' 'make')
source=(
	http://yubico-c.googlecode.com/files/$pkgname-$pkgver.tar.gz
)
md5sums=('6468ee9962b45b1daa8be4c040d6a877')

build()
{
	cd $srcdir/$pkgname-$pkgver/
	./configure --prefix=/usr || return 1
	make || return 1
	echo INSTALLING
	make DESTDIR="$pkgdir/" install || return 1

	install -D -m0644 $srcdir/$pkgname-$pkgver/COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING || return 1
}
