pkgname=kamoso
pkgver=2.0.2git20130121
pkgrel=1
pkgdesc="An application to take pictures and videos out of your webcam for KDE"
arch=('i686' 'x86_64')
url="https://projects.kde.org/kamoso"
license=('GPL')
depends=('kdebase-runtime' 'qt-gstreamer' 'libkipi' 'gstreamer0.10-base-plugins' 'gstreamer0.10-good-plugins')
makedepends=('cmake' 'automoc4' 'boost')
optdepends=('kipi-plugins: Facebook support')
conflicts=('kamoso-git')
source=("$pkgname-$pkgver.tar.bz2"::"http://quickgit.kde.org/?p=kamoso.git&a=snapshot&h=bf2d9c463162bf26e126820ef8285ea531b1b7c3&fmt=tbz2")
install=$pkgname.install
md5sums=('9d9ec43d188b2f27e360b50720887d59')
         
build() {
  cd "$srcdir"
  mkdir build
  cd build
  cmake ../$pkgname \
    -DQT_QMAKE_EXECUTABLE=qmake4 \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package(){
  cd "$srcdir/build"
  make DESTDIR="$pkgdir" install
}
