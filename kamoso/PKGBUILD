#Contributor: said
#Contributor: Panagiotis Papadopoulos <pano_90 AT gmx DOT net>
pkgname=kamoso
pkgver=2.0
pkgrel=1
pkgdesc="An application to take pictures and videos out of your webcam"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/Kamoso?content=111750"
license=('GPL')
depends=('kdebase-workspace' 'vlc' 'qtgstreamer-git' 'gstreamer0.10' 'kdegraphics-libs')
makedepends=('cmake' 'automoc4')
optdepends=('kipi-plugins: Facebook support')
conflicts=('kamoso-git')
source=(ftp://ftp.kde.org/pub/kde/stable/kamoso/2.0/src/${pkgname}-${pkgver}-final.tar.bz2)
md5sums=('b51117812e9648c84be45374c9ecfd3a')

build() {
  mkdir -p ${srcdir}/build
  cd ${srcdir}/build
  cmake ../$pkgname-${pkgver}-final \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` \
    -DCMAKE_BUILD_TYPE=Release
  make
  make DESTDIR="$pkgdir/" install
}
