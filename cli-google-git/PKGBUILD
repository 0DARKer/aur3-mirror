_pkgname=cli-google
pkgname=cli-google-git
pkgver=0.20.0751a1a
pkgrel=1
epoch=1
pkgdesc="Google Search from command line"
arch=('i686' 'x86_64')
url='https://github.com/henux/cli-google.git'
license=('GPL')
depends=('python2')
makedepends=('git')
provides=('cli-google')
conflicts=('cli-google')
source=('git://github.com/henux/cli-google.git')
md5sums=('SKIP')


pkgver() {
  cd $_pkgname
  echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

package() {
  cd "$srcdir/$_pkgname"
  sed -i google -e 's|#!/usr/bin/python|#!/usr/bin/python2|'
  make PREFIX="$pkgdir/usr" install
}
