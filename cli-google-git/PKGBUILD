# Contributor: Henri HÃ¤kkinen <henuxd@gmail.com>

pkgname=cli-google-git
pkgver=20090523
pkgrel=1
pkgdesc="Google Search from command line"
arch=('i686' 'x86_64')
url="http://henux.nor.fi/projects/cli-google.php"
license=('GPL')
depends=('python')
makedepends=('git')
provides=('cli-google')
conflicts=('cli-google')
source=()
md5sums=()

_gitroot="git://github.com/henux/cli-google.git"
_gitname="cli-google"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git-pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "$startdir/src/cli-google" || return 1
  make PREFIX="$pkgdir/usr" install || return 1
}
