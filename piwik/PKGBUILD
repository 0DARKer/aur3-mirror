# Mantainer: Topo Lino <opotonil at localnet dot org dot es>

pkgname=piwik
pkgver=0.6.3
pkgrel=1
pkgdesc="A PHP web analytics"
arch=('any')
url="http://www.piwik.org"
license=('GPL')
depends=('php')
optdepends=('php-gd')
backup=('/srv/http/piwik/config/config.ini.php')
options=(force)
source=(http://builds.piwik.org/$pkgname-$pkgver.tar.gz)
md5sums=('f5a6d3d8da7b4ac36d2413b0911ec449')

build() {
  _instdir=${pkgdir}/srv/http/piwik
  mkdir -p ${_instdir}
  cd ${_instdir}
  cp -ra ${srcdir}/$pkgname/* . || return 1
  echo "deny from all" > .htaccess
}
