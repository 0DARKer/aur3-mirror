# Contributor: Topo Lino <opotonil at localnet dot org dot es>

pkgname=piwik
pkgver=1.4
pkgrel=1
pkgdesc="Piwik is a real time web analytics software program, written in PHP"
arch=('any')
url="http://www.piwik.org"
license=('GPL')
depends=('php' 'php-gd' 'mysql')
# Not needed anymore, the tarball includes a `config.ini.sample.php' file
#backup=('srv/http/piwik/config/config.ini.php')
options=('!strip')
source=(http://builds.piwik.org/$pkgname-$pkgver.tar.gz)
md5sums=('0e12b5b5b8370d550e97988b671e2dde')

package() {
  mkdir -p ${pkgdir}/srv/http/piwik
  cp -ra ${srcdir}/$pkgname/* ${pkgdir}/srv/http/piwik
  # This only works for apache... is it really necessary ?
  echo "deny from all" > ${pkgdir}/srv/http/piwik/.htaccess
}
