# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=slipstream
pkgver=0.1
pkgrel=1
pkgdesc="A free racing vehicle simulator trying to be physically accurate and fun to play at the same time!"
arch=(any)
url="http://www.nongnu.org/slipstream/"
license=('GPL')
depends=('techne>=0.2.2' "$pkgname-data")
install="$pkgname.install"
source=("http://download-mirror.savannah.gnu.org/releases/slipstream/slipstream-0.1.tar.gz")
md5sums=('8be042bca3eb5f4d380b16afca19ff38')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
