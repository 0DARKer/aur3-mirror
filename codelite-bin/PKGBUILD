
pkgname=codelite-bin
_pkgname=codelite
pkgver=2.8.0.4537
pkgrel=1
pkgdesc="Cross platform IDE for the C/C++ programming languages"
arch=('i686' 'x86_64')
url="http://www.codelite.org/"
license=('GPL')
depends=('wxgtk>=2.8.4')
makedepends=('rpmextract' 'curl')

_sourceurl=http://downloads.sourceforge.net
_source_i686=($_sourceurl/$_pkgname/$_pkgname-$pkgver-1.suse11.3.i586.rpm)
_md5sums_i686=('d29c991557311ffbd512df0f8ed6ccca')
_source_x86_64=($_sourceurl/$_pkgname/$_pkgname-$pkgver-1.suse11.3.x86_64.rpm)
_md5sums_x86_64=('cf370b449e318fb3c6a4f231c91545aa')

_source=_source_$CARCH
_md5sums=_md5sums_$CARCH
source=${!_source}
md5sums=${!_md5sums}

build() {
    cd $srcdir/
    
    mkdir extraction && cd extraction
    rpmextract.sh ../*.rpm
    cp -r $srcdir/extraction/usr $pkgdir

}

