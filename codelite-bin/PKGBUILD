pkgname=codelite-bin
pkgver=5.0.6213
pkgrel=2
pkgdesc="Cross platform IDE for the C/C++ programming languages"
arch=('i686' 'x86_64')
url="http://www.codelite.org/"
license=('GPL')
depends=('wxgtk2.9>=2.9.4' 'libpng12>=1.2.13-4' 'atk>=1.12.4' 'libtiff>4.0')
pkgdesc="Open-source, cross platform IDE for the C/C++ programming languages"

#libc6 (>= 2.15)
#libcairo2 (>= 1.6.0)
#libexpat1 (>= 2.0.1)
#libfontconfig1 (>= 2.9.0)
#libfreetype6 (>= 2.2.1)
#libgcc1 (>= 1:4.1.1)
#libgdk-pixbuf2.0-0 (>= 2.22.0)
#libgl1-mesa-glx | libgl1
#libglib2.0-0 (>= 2.24.0)
#libgtk2.0-0 (>= 2.24.0)
#libjpeg8 (>= 8c)
#libpango1.0-0 (>= 1.18.0)
#libsm6, libstdc++6 (>= 4.6)
#libwebkitgtk-1.0-0 (>= 1.3.10)
#libwxbase2.9-0-unofficial, libwxgtk2.9-0-unofficial, libx11-6, libxxf86vm1, zlib1g (>= 1:1.1.4)

makedepends=('binutils' 'tar')
install=codelite.install
conflicts=('codelite' 'codelite-svn')
replaces=('codelite' 'codelite-svn')
provides=('codelite' 'codelite-svn')

source_i686=http://codelite.co.uk/ubuntu/pool/universe/c/codelite/codelite_5.0.6213-2.quantal_i386.deb
md5sums_i686=('29cda87fceae03d5758e6b11602428e4')

if [[ $CARCH == x86_64 ]]; then
	source=http://codelite.co.uk/ubuntu/pool/universe/c/codelite/codelite_5.0.6213-2.quantal_amd64.deb
	md5sums=('5b57404d1befa87ab6ded6a85309ce0d')
fi

build() {
    cd $srcdir/
	mkdir extraction && cd extraction
	ar x ../*.deb
	tar xzvf data.tar.gz
    cp -r $srcdir/extraction/usr $pkgdir
    ln -s /usr/lib/libtiff.so $pkgdir/usr/lib/codelite/libtiff.so.4
}

