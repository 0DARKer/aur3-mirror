# Maintainer: sanderd17 <sanderd17 at gmail dot com>

pkgname=gnome-shell-theme-reworkedx3me
pkgver=20111107
pkgrel=3
pkgdesc="Gnome shell 3.2 compatible version of the X3ME theme, by Sishnizzle" 
url="http://sishnizzle.deviantart.com/art/ReworkedX3ME-264438890"
license=('GPL')
arch=('any')
depends=('gnome-shell>=3.2')
makedepends=('unzip')
optdepends=('gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://www.deviantart.com/download/253244438/gnome_shell___x3me_by_alex3me-d46rwnq.zip")
md5sums=('97ff7f85ba11c5ae3d960d3d8289103a')



build() {
  mkdir -p ${pkgdir}/usr/share/themes/
  unzip ${srcdir}/X3ME\ -\ Arch -d ${pkgdir}/usr/share/themes/
  mv  ${pkgdir}/usr/share/themes/X3ME\ -\ Arch  ${pkgdir}/usr/share/themes/X3ME-Arch
  chmod a+x ${pkgdir}/usr/share/themes/X3ME-Arch

}


