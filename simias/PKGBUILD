# Maintainer: Frane Bandov <frane@offbyte.com>

pkgname=simias
pkgver=1.4.6214.1
pkgrel=3
url="http://www.ifolder.com"
arch=('i686')
pkgdesc="Simias Collection Store"
options=('!libtool')
license="GPL"
depends=('libflaim' 'libxml2' 'log4net')
source=(http://forgeftp.novell.com/ifolder/client/3.4/20060802-0101/src/simias-$pkgver.tar.gz \
	CSPType.patch)
md5sums=('5d657745a70ab284b07be4ea856ace05' 'e570f6da3f518b541e2775edecad93d1')

build() {
  export MONO_SHARED_DIR=$startdir/src/.wabi
  mkdir -p $MONO_SHARED_DIR
  cd $startdir/src/$pkgname-$pkgver

  patch -p0 -i ../CSPType.patch

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  rm -r $MONO_SHARED_DIR
}
