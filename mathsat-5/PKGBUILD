# Maintainer: Marat Akhin <Marat.Akhin@gmail.com>

pkgname=mathsat-5
pkgver=5.2.8
pkgrel=1
pkgdesc="MathSAT 5 is an efficient SMT solver supporting a wide range of theories and functionalities"
arch=('x86_64')
url="http://mathsat.fbk.eu/"
license=('GPL' 'LGPL' 'custom')
source=("$pkgname-$pkgver.tar.gz::http://mathsat.fbk.eu/download.php?file=mathsat-5.2.8-linux-x86_64.tar.gz")
md5sums=('64f71d9bbea04ce8adc0b22d960475ac')

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/include/mathsat"
  mkdir -p "$pkgdir/usr/lib"

  cp -r "$srcdir/mathsat-5.2.8-linux-x86_64/bin/." "$pkgdir/usr/bin/"
  cp -r "$srcdir/mathsat-5.2.8-linux-x86_64/include/." "$pkgdir/usr/include/mathsat/"
  cp -r "$srcdir/mathsat-5.2.8-linux-x86_64/lib/." "$pkgdir/usr/lib/"

  install -Dm644 "$srcdir/mathsat-5.2.8-linux-x86_64/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
