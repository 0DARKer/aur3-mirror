# Maintainer: Daniel Milde <info@milde.cz>

pkgname=smalltalk-x-jv-nightly
pkgver=6.1.2
_srcrel=20101223
pkgrel=3
pkgdesc="Smalltalk/X JV branch nightly builds"
arch=('i686' 'x86_64')
url="https://swing.fit.cvut.cz//projects/stx-goodies/wiki/SmalltalkX"
license=('MIT')
depends=('glibc')
makedepends=('')
source=("https://swing.fit.cvut.cz/hudson/job/Smalltalk X (jv-branch)/PLATFORM=Linux/lastSuccessfulBuild/artifact/artifacts/smalltalk-${pkgver}+mop.${_srcrel}svn_linux.tar.bz2" smalltalk-x-jv.desktop)
md5sums=('6b5e2a84ebde2cee0e03d7095e9380be' '8b59c87e1c96c195fa0ffb869b230754')
conflicts=(smalltalk-x-jv)

build() {
    install -d ${pkgdir}/opt/stx-jv
    
    cd ${srcdir}/smalltalk-${pkgver}+mop.${_srcrel}svn_linux
    cp -R ./* ${pkgdir}/opt/stx-jv
    
    install -D ${srcdir}/smalltalk-x-jv.desktop ${pkgdir}/usr/share/applications/smalltalk-x-jv.desktop
    install -D ./lib/smalltalkx/6.1.2/lib/splash-smalltalkx.gif ${pkgdir}/usr/share/pixmaps/stx.gif
}
