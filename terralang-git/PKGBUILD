# Maintainer: Glen Oakley <goakley123@gmail.com>

pkgname=terralang-git
pkgrel=1
pkgver=20130514
pkgdesc="A low-level counterpart to Lua"
arch=('i686' 'x86_64')
url="http://terralang.org/"
license=('MIT')
groups=()
depends=('gcc-libs')
makedepends=('git' 'clang')
provides=('terra')
conflicts=()
replaces=()
backup=()
options=()
install=
noextract=()

_gitroot=git://github.com/zdevito/terra.git
_gitname=terra

pkgver () {
  cd "$srcdir/$_gitname"
  git describe --always | sed 's/-/./g'
}

build() {
  echo "$pkgdir"
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/$_gitname"

  #
  # BUILD HERE
  #
  make
}

package() {
  cd "$srcdir/$_gitname"
  mkdir -p "$pkgdir/usr/bin"
  cp terra "$pkgdir/usr/bin/"
  mkdir -p "$pkgdir/usr/share/licenses/terralang-git"
  cp LICENSE.txt "$pkgdir/usr/share/licenses/terralang-git/"
}
