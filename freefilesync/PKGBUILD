# CHEN, Xing <cxcxcxcx at gmail.com>

pkgname=freefilesync
pkgver=3.14
pkgrel=1
pkgdesc="A free file sync tool"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/freefilesync/"
license=('GPLv3')
depends=(gtkmm wxgtk boost)
source=("http://downloads.sourceforge.net/project/freefilesync/freefilesync/v$pkgver/FreeFileSync_Sourcecode_v$pkgver.zip" makefile.patch FreeFileSync.desktop)

build () {
  cd ${srcdir}
  patch -p1 < makefile.patch
  make
  make DESTDIR=${pkgdir} install
  install -Dm644 FreeFileSync.desktop $pkgdir/usr/share/applications/FreeFileSync.desktop 
}
md5sums=('c96a50794b06b0f059cffc4f9156df6d'
         '28bf8e4d3a51a264490b29d8d8036cdd'
	 'dd440c4cdce08b3aa186f83bda58c49d')
