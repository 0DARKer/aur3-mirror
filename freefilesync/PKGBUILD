pkgname=freefilesync
pkgver=3.16
pkgrel=1
pkgdesc="A free file sync tool"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/freefilesync/"
license=('GPLv3')
depends=(gtkmm wxgtk boost)
source=("http://downloads.sourceforge.net/project/freefilesync/freefilesync/v$pkgver/FreeFileSync_Sourcecode_v$pkgver.zip" FreeFileSync.desktop)

build () {
  cd ${srcdir}
  make
  make DESTDIR=${pkgdir} install
  install -Dm644 FreeFileSync.desktop $pkgdir/usr/share/applications/FreeFileSync.desktop 
}
md5sums=('7672414fffa05e44a5bc206e9b694753'
         'dd440c4cdce08b3aa186f83bda58c49d')
