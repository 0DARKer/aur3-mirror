# Maintainer: Mike Wolf <m AT mw DOT gg>

_pkgname=utabot
pkgname=${_pkgname}-git
pkgver=0.1
pkgrel=1
pkgdesc="IRC bot to download and show current METAR and TAF reports, when requested by users."
arch=('any')
url="https://github.com/mwgg/utabot"
license=('GPLv3')
depends=('python')
makedepends=('git')
provides=('utabot')
source="git+https://github.com/mwgg/utabot.git"
md5sums=('SKIP')

pkgver() {
	cd ${_pkgname}
    git rev-list --count HEAD
}

package() {
    cd "$srcdir/$_pkgname"
    mkdir -p "$pkgdir/usr/bin/"
    cp utabot.py "$pkgdir/usr/bin/"
    chmod +x "$pkgdir/usr/bin/utabot.py"
}
