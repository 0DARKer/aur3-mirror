# Contributor: Phillip Fynan <pfynan@gmail.com>
# Maintainer: Eric Forgeot < http://www.esclinux.tk >

pkgname=abcmidi
pkgver=20110101
pkgrel=1
pkgdesc="A set of tools for converting ABC files to MIDI files and vice versa, as well as other small utilities"
url="http://abc.sourceforge.net/abcMIDI/"
license="GPL"
depends=('glibc')
makedepends=('unzip')
source=('http://ifdo.pugmarks.com/~seymour/runabc/abcMIDI-2011-01-01.zip')
arch=(i686 x86_64)
md5sums=('f4c8794786c4f9ba87f2c129cf3a3031')

build() {
    cd $startdir/src/abcmidi
    
    make 'binaries=abc2midi midi2abc abc2abc mftext midicopy abcmatch' || return 1
 
    mkdir -p $startdir/pkg/usr/bin
    make prefix=$startdir/pkg/usr 'binaries=abc2midi midi2abc abc2abc mftext midicopy abcmatch' install
}
