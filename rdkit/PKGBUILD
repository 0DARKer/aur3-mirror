# Maintainer: Giuseppe Marco Randazzo <gmrandazzo@gmail.com>
pkgname=rdkit
_pkgname=RDKit
pkgver=2010_12_1
pkgrel=1
pkgdesc="RDKit - A collection of cheminformatics and machine-learning software written in C++ and Python."
arch=("i686" "x86_64")
url="http://rdkit.org/"
license=('New BSD License')
depends=( 'bison' 'boost' 'boost-libs' 'cmake' 'flex' 'python2' 'sqlite3' )
source=(http://downloads.sourceforge.net/${pkgname}/${_pkgname}_${pkgver}.tgz)
md5sums=('2823efa4bbd3c33c762a057b6287601e')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${_pkgname}_${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DRDK_INSTALL_INTREE=0 \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install 
}
