# Maintainer: Vic Demuzere <vic@demuzere.be>

pkgname=minecraft-server
pkgver=1.3
pkgrel=12
pkgdesc="Server for minecraft"
arch=(any)
license=('custom')
url="http://www.minecraft.net/"
depends=('java-runtime')
md5sums=('36a938abf332e5792434d9e8e81e5adf'
         'fd341dccafa8c1f5fb851505524151f5'
         '4ed37be6f16992d95b406a36fb4438a3')
source=(minecraft-server http://minecraft.net/download/minecraft_server.jar minecraft-server-rc)

build() {
	cd "$srcdir" || return 1

	install -D $srcdir/minecraft-server $pkgdir/usr/bin/minecraft-server
	install -D $srcdir/minecraft_server.jar $pkgdir/usr/share/java/minecraft-server/minecraft-server.jar

	install -D $srcdir/minecraft-server-rc $pkgdir/etc/rc.d/minecraft-server
}
