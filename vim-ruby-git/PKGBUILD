# Maintainer: Boohbah <boohbah at gmail.com>

pkgname=vim-ruby-git
_gitname=vim-ruby
pkgver=5943faa
pkgrel=1
pkgdesc="Vim configuration files for Ruby"
arch=('any')
url="https://github.com/vim-ruby"
license=('GPL')
depends=('vim')
makedepends=('git' 'ruby')
install=vimdoc.install
source=('git://github.com/vim-ruby/vim-ruby.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  # Use the tag of the last commit
  git describe --always | sed 's|-|.|g'
}

package() {
  cd $_gitname
  mkdir -p "$pkgdir/usr/share/vim/vimfiles"
  # Fix install
  sed -i '43,46d;48d' bin/vim-ruby-install.rb
  ruby bin/vim-ruby-install.rb --directory "$pkgdir/usr/share/vim/vimfiles"
}

# vim:set ts=2 sw=2 et:
