# Maintainer: Boohbah <boohbah at gmail.com>
pkgname=vim-ruby-git
pkgver=20130207
pkgrel=1
pkgdesc="Vim configuration files for Ruby"
arch=('any')
url="https://github.com/vim-ruby"
license=('GPL')
depends=('ruby' 'vim')
makedepends=('git' 'ruby')

_gitroot=git://github.com/vim-ruby/vim-ruby.git
_gitname=vim-ruby

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  mkdir -p "${pkgdir}/usr/share/vim/vimfiles"
  ruby bin/vim-ruby-install.rb --directory "${pkgdir}/usr/share/vim/vimfiles"
}

# vim:set ts=2 sw=2 et:
