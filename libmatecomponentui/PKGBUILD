# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=libmatecomponentui
pkgver=0.0.0
pkgrel=1
pkgdesc="User Interface library for MateComponent"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('libmatecanvas' 'libmate')
makedepends=('intltool' 'pkgconfig')
options=('!libtool' '!emptydirs')
url="http://matsusoft.com.ar/projects"
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('d5389446de8ae4deb4eb441f7cc1a4951edad3d3fb6c9b0c1d79afb40f7f89a7')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"
	
	make DESTDIR="${pkgdir}" install
	rm -f "${pkgdir}/usr/share/applications/matecomponent-browser.desktop"
}
