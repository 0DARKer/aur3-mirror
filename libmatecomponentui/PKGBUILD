pkgname=libmatecomponentui
pkgver=2011.12.16
pkgrel=1
pkgdesc="User Interface library for MateComponent"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('libmatecanvas' 'libmate')
makedepends=('intltool' 'pkgconfig')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://matsusoft.com.ar/projects/mate/"
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('38e1e12cb93fddfe0d530f0ca9bf15ba46775959c0fd61ab4bb34d42af79a010')

build() {
    cd "${srcdir}"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}"

    make DESTDIR="${pkgdir}" install
    rm -f "${pkgdir}/usr/share/applications/matecomponent-browser.desktop"
}
