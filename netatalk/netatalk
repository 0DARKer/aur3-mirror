#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

NAME="NetATalk Meta-Daemon"
ARGS=
DEPENDS=init
DAEMON=`basename "$0"`
DAEMONS=()
PID=()

[ -r /etc/conf.d/$DAEMON ] && . /etc/conf.d/$DAEMON

daemons(){
	for i in atalkd papd timelord a2boot cnid_metad afpd
	do
		if [ `type -p $i` ]; then DAEMONS+=($i); PID+=(`get_pid $i`); fi
	done
}
daemons

case "$1" in
 start)
   STARTING=''; rc.d start ${DAEMONS[@]}
   if [ $? = 0 ]; then
     add_daemon $DAEMON
   else
     exit 1
   fi
   ;;
 stop)
   for ((i=${#DAEMONS[@]}-1; i>=0; i--));do rc.d stop ${DAEMONS[$i]}; done
   if [ $? = 0 ]; then
     rm_daemon $DAEMON
   else
     exit 1
   fi
   ;;
 restart)
   $0 stop
   sleep 1
   $0 start
   ;;
 *)
   echo "usage: $0 {start|stop|restart}"  
esac