# Maintainer: mickele
pkgname=opencascade-docs
pkgver=6.5.2
pkgrel=1
pkgdesc="Documentation and examples for opencascade."
url="http://www.opencascade.org"
license="custom"
depends=()
makedepends=('coreutils')
provides=()
conflicts=()
options=()
replaces=()
arch=('i686' 'x86_64')
source=("http://files.opencascade.com/OCCT/OCC_${pkgver}_release/OpenCASCADE652.tar.gz")

package() {
  # Installation dir
  local _installdir=/opt/opencascade

  # Copy files from source to the installation dir
  install -d -m 755 "${pkgdir}${_installdir}" || return 1
  cp -r "${srcdir}/data" \
     	"${srcdir}/samples" \
     	"${srcdir}/doc" \
  	"${pkgdir}${_installdir}" || return 1
}

md5sums=('bb832d308409ddbdad89708496f2ecad')
