# Maintainer: mickele
pkgname=opencascade-docs
pkgver=6.5.0
pkgrel=1
pkgdesc="Documentation and examples for opencascade."
url="http://www.opencascade.org"
license="custom"
depends=()
makedepends=('coreutils')
provides=()
conflicts=()
options=()
replaces=()
arch=('i686' 'x86_64')
source=('http://files.opencascade.com/OCCT/OCC_6.5_release/OpenCASCADE650.tar.gz')

md5sums=('a885f4f4e08776718c8736a363f5a2ee')

package() {
  # Installation dir
  local _installdir=/opt/opencascade

  # Copy files from source to the installation dir
  install -d -m 755 "${pkgdir}${_installdir}" || return 1
  cp -r "${srcdir}/data" \
     	"${srcdir}/samples" \
     	"${srcdir}/doc" \
  	"${pkgdir}${_installdir}" || return 1
}
