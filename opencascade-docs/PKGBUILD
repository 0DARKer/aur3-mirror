# Maintainer: mickele
pkgname=opencascade-docs
pkgver=6.3.0
pkgrel=1
pkgdesc="Documentation and examples for opencascade."
url="http://www.opencascade.org"
license="custom"
depends=()
makedepends=('coreutils')
provides=()
conflicts=()
options=()
replaces=()
arch=('i686' 'x86_64')
backup=()
install=()
source=('http://files.opencascade.com/OCC_6.3_release/OpenCASCADE_src.tgz')

build() {
  # Installation dir
  local _installdir=/opt/opencascade

  # Copy files from source to the installation dir
  install -d -m 755 "${pkgdir}${_installdir}" || return 1
  cp -r "${srcdir}/OpenCASCADE${pkgver}/data" \
     	"${srcdir}/OpenCASCADE${pkgver}/samples" \
     	"${srcdir}/OpenCASCADE${pkgver}/doc" \
  	"${pkgdir}${_installdir}" || return 1
}
md5sums=('52778127974cb3141c2827f9d40d1f11')
