pkgname=sqlmap-svn
pkgver=20110604
pkgrel=1
pkgdesc="automatic SQL injection and database takeover tool"
arch=('any')
url='http://sqlmap.sourceforge.net'
license=('GPLv2')
makedepends=('svn')
depends=('python2')
provide=('sqlmap')
source=()

_svntrunk="https://svn.sqlmap.org/sqlmap/trunk/sqlmap"
_svnmod="sqlmap"

build(){
    cd "$srcdir"
    
    if [-d $_svnmod ]; then
        msg "Checkout src..."
        cd $_svnmod && svn up
    else
        msg "Updating existing src..."
        svn co $_svntrunk $_svnmod
    fi

    rm -rf "$_svnmod-build"

    cp "$_svnmod" "$_svmod-build"
}

package(){
    cd "$srcdir/$_svnmod-build"

    mkdir -p "$pkgdir/opt/sqlmap/"

    rm .svn -rf
    cp -r * "$pkgdir/opt/sqlmap"
}
