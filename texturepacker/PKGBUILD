# Maintainer: Gordin <9ordin @t gmail dot com>
pkgname=texturepacker
pkgver=2.3.6b2
pkgrel=1
pkgdesc="The most complete tool for sprite sheet creation and image optimization"
arch=('i686' 'x86_64')
url="http://www.texturepacker.com"
license=('unknown')
install='texturepacker.install'

if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='64'
    depends=('shared-mime-info' 'qt' 'gcc-libs-multilib')
    md5sums=('b1c257ca3a513dbcaae9517ef14d6fb3')
else
    ARCH='32'
    depends=('shared-mime-info' 'qt' 'gcc-libs')
    md5sums=('b2180a0003d361740fce83060a7749a8')
fi

source=("http://www.code-and-web.de/downloads/texturepacker/$pkgver/TexturePacker-$pkgver-Linux-$ARCH.deb")

build() {
    msg "Extracting..."
    ar -xv TexturePacker-$pkgver-Linux-$ARCH.deb || return 1
    tar -xvf data.tar.gz || return 1
    msg2 "Done extracting!"
    msg "Moving files"
    mv $srcdir/usr $pkgdir
    msg2 "Done moving files"

}

