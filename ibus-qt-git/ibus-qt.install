post_install() {
    cat << __EOF__
==> Please set environment variables first
==> in ~/.xprofile. For example, to start with KDE:
#export LANG=zh_CN.UTF-8
export XMODIFIERS="@im=ibus"
export GTK_IM_MODULE=ibus
export QT_IM_MODULE=ibus
ibus-daemon -xrd
__EOF__
}

post_upgrade() {
    post_install
}
