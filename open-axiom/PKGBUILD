# Contributor: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=open-axiom
pkgver=1.4.2
pkgrel=1
pkgdesc="open source platform for symbolic, algebraic, and numerical computations"
arch=('i686' 'x86_64')
license=('custom')
depends=('sbcl' 'qt4' 'libxpm')
options=('!strip' '!emptydirs')
url="http://www.open-axiom.org/1.4"
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2?r=&use_mirror=citylan" "LICENSE")
md5sums=('521850b13eaefdf4662823da16c97897'
         'eec8e6188dcdf22d27683c197cea75e8')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr --with-x --with-lisp=sbcl
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR=$pkgdir install
    install -D -m644 "$srcdir/LICENSE" $pkgdir/usr/share/licenses/$pkgname
}
