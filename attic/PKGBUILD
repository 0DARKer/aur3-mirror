# Maintainer: Beneldr <beneldr (dot) aur (at) gmail (dot) com>

pkgname=attic
pkgver=0.9
pkgrel=1
pkgdesc="A deduplicating backup program for efficient and secure backups."
arch=('i686' 'x86_64')
url="https://github.com/jborg/attic"
license=('BSD')
depends=('python' 'openssl' 'python-msgpack')
optdepends=('python-llfuse: Mounting backups as a FUSE filesystem')
conflicts=('attic-git')
source=(https://github.com/jborg/attic/archive/$pkgver.tar.gz)
md5sums=('c6609f9c96436e2ea9adfccd0c9a3da5')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  python setup.py -q install --root="$pkgdir" --optimize=1
}
