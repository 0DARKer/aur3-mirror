# $Id: PKGBUILD 26966 2009-02-14 23:57:37Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: John Proctor <jproctor@prium.net>

pkgname=python25-libxml2
_realname=libxml2
pkgver=2.7.3
pkgrel=1
pkgdesc="libxml2 compiled with python25"
arch=(i686 x86_64)
license=('custom')
depends=('zlib>=1.2.3.3' 'readline>=5.2.013' 'ncurses>=5.7')
makedepends=('python25')
options=('!libtool')
url="http://www.xmlsoft.org/"
source=(ftp://ftp.xmlsoft.org/${_realname}/${_realname}-${pkgver}.tar.gz)
md5sums=('8f4fda3969237c2a33bdb1583b5d06b2')

build() {
  cd "${srcdir}/${_realname}-${pkgver}"
  ./configure --prefix=/usr/local --with-threads --with-history --with-python=/usr/bin/python2.5|| return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  mv ${pkgdir}/usr/lib/python2.5 ${pkgdir}/usr/local/lib/
  install -m755 -d "${pkgdir}/usr/local/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/local/share/licenses/${pkgname}/" || return 1
}
