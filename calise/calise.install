post_install() {
    if [ -e /home/*/.config/camsensor ]
        then echo /home/*/.config/camsensor/ | while read LINE;
            do mv $LINE `echo $LINE | sed s'/config\/camsensor/config\/calise/'`
            done
    fi
    gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

post_upgrade() {
    gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

post_remove() {
    gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}