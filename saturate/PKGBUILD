# Contributor: Tibor Bamhor <tiborb95 at gmail.com>

pkgname=gimp-plugin-satequalizer
pkgver=0.1
pkgrel=1
pkgdesc="Saturation equalizer - gimp plugin. For better and more flexible adjustments of saturation."
url="http://code.google.com/p/satequalizer/"
license="GPL-3"
arch=('i686' 'x86_64')
depends=(gimp)
#makedepends=()
source=(http://satequalizer.googlecode.com/files/saturate-$pkgver.tgz)

md5sums=('47bed25b58a048deb9abb4821ad2e4b7')

build() {

#defining variables
work_dir=$srcdir/satequalizer/
#out_file=cphix

#building
cd $work_dir
gimptool-2.0  --build saturate.c || exit 1

#copying file into pkgdir to be packed
mkdir -p $pkgdir/usr/lib/gimp/2.0/plug-ins/
install -m 755 saturate $pkgdir/usr/lib/gimp/2.0/plug-ins/ 

}


