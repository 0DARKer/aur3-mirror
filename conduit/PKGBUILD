pkgname=conduit
pkgver=0.3.17
pkgrel=6
pkgdesc="Data synchronization solution for GNOME"
arch=('any')
url="http://www.conduit-project.org/"
license="GPL"
depends=('python-vobject' 'pygoocanvas' 'dbus-python' 'python-pysqlite' 'python2' \
		'gnome-python-extras' 'flickrapi' 'python-evolution' 'python2-gconf')
makedepends=('intltool' 'gnome-doc-utils')
optdepends=('opensync-svn'
			'libgpod')
source=("http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/0.3/${pkgname}-${pkgver}.tar.bz2")
install=${pkgname}.install
md5sums=('0c94b2b980e26ea71a470683bbd6a45f')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr 
	make
	}
package()
{
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install 
	find ${pkgdir}/ -type f | xargs sed -i 's@^#!.*python$@#!/usr/bin/python2@'


}

