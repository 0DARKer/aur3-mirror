# Contributor: Shanto <shanto@hotmail.com>

pkgname=eclipse-shelled
pkgver=2.0.0
pkgrel=1
pkgdesc=" Eclipse"
arch=('any')
url="http://sourceforge.net/projects/shelled/"
license=('EPL')
depends=("eclipse")
optdepends=('openssh')
_mirror="http://freefr.dl.sourceforge.net"
source=("$_mirror/project/shelled/shelled/ShellEd%20${pkgver}/net.sourceforge.shelled-site-${pkgver}.zip")
md5sums=('860fc4c3cf16ffd20bf3a34f015eb44e')

package() {
	cd $srcdir
	install -dm755 $pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/
	find features plugins -type f -exec install -Dm644 {} \
		$pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/{} \;
}
