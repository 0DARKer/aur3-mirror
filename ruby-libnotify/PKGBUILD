# Contributor: Andreas W. Hauser <andy-aur@splashground.de>

pkgname=ruby-libnotify
pkgver=0.4.1
pkgrel=1
pkgdesc="ruby bindings for libnotify, a library for desktop notifications"
arch=('i686' 'x86_64')
url="http://github.com/vargolo/ruby-libnotify"
license=('LGPL')
depends=('ruby' 'libnotify' 'ruby-gtk2')
makedepends=('pkgconfig')
source=(http://github.com/downloads/vargolo/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('c83e3b53334d108f7c4dd3461f3e1f93')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ruby setup.rb config
  ruby setup.rb setup
  ruby setup.rb install --prefix=${pkgdir}
}
