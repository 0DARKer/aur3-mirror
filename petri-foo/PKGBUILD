# Maintainer: masutu <masutu dot arch at gmail dot com>
pkgname=petri-foo
pkgver=0.0.1
pkgrel=1
pkgdesc="A fork of specimen, a MIDI controllable audio sampler, for JACK."
arch=('i686')
url="http://petri-foo.sourceforge.net/"
license=('GPL2')
depends=('jack' 'phat')
optdepends=('lash: for lash session managment support')
source=(http://sourceforge.net/projects/${pkgname}/files/Source/${pkgname}-${pkgver}.tar.gz)
md5sums=('123c59ada2db35f5b4fefab2bd58ffbc')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
