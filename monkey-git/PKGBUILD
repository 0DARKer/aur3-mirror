#Maintaner: Gary Wright <wriggary at g mail dot com>
pkgname=monkey-git
pkgver=20100415
pkgrel=1
pkgdesc="A Fast and Lightweight Web Server for Linux"
arch=('i686' 'x86_64')
url="http://monkey-project.org"
license=('GPL2')
depends=('gcc-libs')
makedepends=('git')
provides=('monkey')
source=(monkey)
md5sums=('02bf4b20eef0b81efb7646f29e28d3d3')

_gitroot="git://repo.or.cz/MonkeyD.git"
_gitname="MonkeyD"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc/$pkgname \
  --datadir=/var/www/htdocs --logdir=/var/log/$pkgname \
  --plugdir=/usr/lib/$pkgname --cgibin=/var/www/htdocs/cgi-bin \
  || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
  install -d $pkgdir/etc/rc.d/ || return 1
  install -m 755 ../monkey $pkgdir/etc/rc.d/monkey || return 1
} 
