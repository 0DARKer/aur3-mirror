#Maintainer: Joel Heaton <jheaton at archlinux dot us>
#Contributor: Gary Wright <wriggary at g mail dot com>
pkgname=monkey-git
pkgver=20111009
pkgrel=1
pkgdesc="A Fast and Lightweight Web Server for Linux"
arch=('i686' 'x86_64')
url="http://monkey-project.org"
license=('GPL2')
depends=('gcc-libs')
optdepends=('php')
makedepends=('git')
provides=('monkey')
conflicts=('monkey')
source=(monkey
        monkey.install)
install=monkey.install
md5sums=('1527d1fbddddcfd69ad328639dcd0eed'
         '81b12c744ec2bb8efc9f014f90c739ce')

_gitroot="git://git.monkey-project.com/monkey"
_gitname="Monkey"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc/$pkgname \
  --datadir=/var/www/htdocs --logdir=/var/log/$pkgname \
  --plugdir=/usr/lib/$pkgname  || return 1

  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
  install -d $pkgdir/etc/rc.d/ || return 1
  install -m 755 ../monkey $pkgdir/etc/rc.d/monkey || return 1
} 
