# Contributor: Peque (udbytossen@gmail.com)
pkgname=cccam-server
pkgver=0.1
pkgrel=1
pkgdesc="CCcam server 2.0.9"
arch=('i686')
depends=('unzip')
license="GPL"
url="http://rs241.rapidshare.com/files/116648790/cccam-2.0.9.zip"
install="cccam.install"
source=('cccam-2.0.9.zip' 'cccamd')
md5sums=('978899af06fd8f5fcdda2a74a890dd16' 'b30bab123f378aaf75e9a37ef72a5630')

build() {
	mkdir -p ${startdir}/src/
	mkdir -p ${startdir}/pkg/etc/rc.d/
	mkdir -p ${startdir}/pkg/var/keys/
	mkdir -p ${startdir}/pkg/etc/
	mkdir -p ${startdir}/pkg/emu/cccam/

	# Unzip and copying the binary 
	cd ${startdir}/src/
	unzip -o ../cccam-2.0.9.zip
	cp ${startdir}/src/CCcam.x86 ${startdir}/pkg/emu/cccam/CCcam.x86
	chmod 777 ${startdir}/pkg/emu/cccam/CCcam.x86
	
	# Moving the Configurationfile CCcam.cfg
	install -D -m655 CCcam.cfg ${startdir}/pkg/etc/CCcam.cfg
	
	# Copying the starting script 
	install -D -m755 ../cccamd ${startdir}/pkg/etc/rc.d/cccamd 
}
# EOF
	
