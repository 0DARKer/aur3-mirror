# Maintainer: Sebastian Wiesner <lunaryorn googlemail com>
pkgname=python-tox
pkgver=1.1
pkgrel=1
pkgdesc="Python virtualenv management and testing tool"
arch=('any')
url="http://codespeak.net/tox"
license=('GPL2')
depends=(python-py 'python-virtualenv>=1.6.1')
source=("http://pypi.python.org/packages/source/t/tox/tox-${pkgver}.zip")
md5sums=('7e6d103d2d944869aee189dc05a6a81f')

build() {
    cd "$srcdir/tox-$pkgver"
    python setup.py install --root="$pkgdir" -O1 || return 1
    ln "${pkgdir}/usr/bin/tox" "${pkgdir}/usr/bin/tox3"
}
