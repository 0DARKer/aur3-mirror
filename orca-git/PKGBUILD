# Maintainer: Steve Holmes <steve.holmes88@gmail.com>
# Contributor: William Rea <sillywilly@gmail.com>

pkgname=orca-git
pkgver=20110517
pkgrel=1
pkgdesc="A scriptable screen reader and magnifier"
arch=(any)
license=('LGPL')
url="http://www.gnome.org/projects/orca"
install=orca-git.install
options=('!libtool')
depends=('pygtk' 'python2-gconf' 'python2-libgnome' 'python-wnck' 'dbus-python'
         'at-spi2-core' 'gnome-speech' 'gnome-mag' 'brltty' 'hicolor-icon-theme'
         'pyxdg' 'pyatspi')
makedepends=('pkgconfig' 'intltool' 'gnome-doc-utils')
replaces=('gnopernicus')
conflicts=('orca')

_gitroot="git://git.gnome.org/orca"
_gitname="orca"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone -b gnome-3-0 $_gitroot
  fi
  msg "GIT checkout done or server timeout"

  msg "Starting make..."
  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  # BUILD HERE

  PYTHON=/usr/bin/python2 ./autogen.sh --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}" install
}
