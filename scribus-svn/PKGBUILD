# Contributor: Tilmann Becker <tilmann.becker@web.de> 

pkgname=scribus-svn
pkgver=18213
pkgrel=2
pkgdesc="A desktop publishing program - Version from SVN"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.scribus.net"
install=${pkgname}.install
depends=('qt5-webkit'     \
  'libcups>=1.2.10'       \
  'lcms2'                 \
  'ghostscript>=8.60'     \
  'libart-lgpl>=2.3.19'   \
  'aspell'                \
  'poppler'               \
  'python2'               \
  'graphicsmagick'        \
  'shared-mime-info')
makedepends=('subversion' 'cmake' 'qt5-tools')
conflicts=('scribus')
provides=('scribus')
md5sums=('aec1cd630e78fe47df07b0ce4a725f7d')
options=('!emptydirs')
_svntrunk='svn://scribus.net/trunk'
_svnmod='scribus'

build() {
  cd $srcdir

  if [ -d $_svnmod/.svn ]; then
	  (cd $_svnmod && svn up -r $pkgver)
  else
	  svn co $_svntrunk --config-dir ./ $_svnmod -r $pkgver
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  
  [ -d $srcdir/$_svnmod-build ] && rm -rf $srcdir/$_svnmod-build
  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build/Scribus
  
  cmake . -DCMAKE_INSTALL_PREFIX:PATH=/usr \
    -DWANT_SYSTEM_CAIRO=1 -DCMAKE_SKIP_RPATH:BOOL=YES \
    -DWANT_GRAPHICSMAGICK=1 -DCMAKE_INCLUDE_PATH=/usr/include/python2.7 \
    -DUSE_QT5=1 -DQT_PREFIX="/usr"

  make
}

package () {
  cd $srcdir/$_svnmod-build/Scribus
  make DESTDIR=$pkgdir install
  for _i in $pkgdir/usr/share/scribus/{scripts,samples}/*.py
  do
    sed -i '1s+python+python2+' ${_i}
  done
  install -Dm644 scribus.desktop $pkgdir/usr/share/applications/scribus.desktop
}


