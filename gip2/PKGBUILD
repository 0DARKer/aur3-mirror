# 64bit gip lazy build

pkgname=gip2
pkgver=2
pkgrel=1
pkgdesc="get_iplayer gui"
arch=('x86_64')
url="http://www.lumbium.co.uk"
license=('GPL')
groups=()
depends=('get_iplayer' 'gtk2')
opdepends=('vlc' 'smplayer')
makedepends=('lazarus-gtk2')
provides=()
conflicts=('gip')
replaces=('gip')
backup=()
install=
source=('http://www.lumbium.co.uk/gip/gip2-2.tar.gz')
md5sums=('589255a5ebe90814a3266f980f225082')

build() {

mkdir -p $pkgdir/usr/bin
mkdir -p $pkgdir/usr/share/applications
mkdir -p $pkgdir/usr/share/pixmaps

cd $srcdir/gip

lazbuild project1.lpr

cp gip $pkgdir/usr/bin/
cp gips $pkgdir/usr/bin/
cp gip.desktop $pkgdir/usr/share/applications/
cp iplayer.png $pkgdir/usr/share/pixmaps/
chmod +x $pkgdir/usr/bin/gip
chmod +x $pkgdir/usr/bin/gips

}