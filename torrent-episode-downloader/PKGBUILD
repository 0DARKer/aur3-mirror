# Contributor: Jesus Lazaro Plaza <jesuslazaro84 at gmail dot com>

pkgname=torrent-episode-downloader
_pkgname=ted
pkgver=0.97.15
_pkgver=09715
pkgrel=1
pkgdesc="TED: Torrent Episode Downloader"
arch=('i686' 'x86_64')
url="http://www.ted.nu/"
license=('GPL')
depends=('java-runtime')
optdeps=('jdic: Tray icon support (i686 only)')
makedepends=('unzip')
source=(http://prdownloads.sourceforge.net/${_pkgname}/${_pkgname}v${_pkgver}.zip
        http://www.ted.nu/img/header_logo.png
        ted_start_script
        ${pkgname}.desktop)
md5sums=('da4792d0944a3187d5a2d09f04c9e5a3'
         '94e0554799527a5d547628cf9298fce5'
         '59626956bbdb95c8f1378f37768a6ddd'
         'da8dada7e34131f4bd73634352aa6a85')

build() {
   mkdir -p ${pkgdir}/opt
   rm -fR ${srcdir}/${_pkgname}v{_pkgver}\ 2/mac
   rm -fR ${srcdir}/${_pkgname}v${_pkgver}\ 2/windows
   rm -fR ${srcdir}/${_pkgname}v${_pkgver}\ 2/sunos
   rm -fR ${srcdir}/${_pkgname}v${_pkgver}\ 2/linux/x86
   cp -R ${srcdir}/${_pkgname}v${_pkgver}\ 2 ${pkgdir}/opt/torrent-episode-downloader || return 1
   install -D -m755 ${srcdir}/ted_start_script ${pkgdir}/usr/bin/torrent-episode-downloader || return 1
   
   # Creating menu item
   install -D -m644 ${startdir}/header_logo.png ${startdir}/pkg/usr/share/pixmaps/${pkgname}.png || return 1
   install -D -m644 ${startdir}/src/${pkgname}.desktop ${startdir}/pkg/usr/share/applications/${pkgname}.desktop || return 1
}
