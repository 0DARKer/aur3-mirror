# Contributor: Yarema aka Knedlyk <yupadmin@gmail.com>

pkgname=radiotray
pkgver=0.7.1
pkgrel=1
pkgdesc="An online radio streaming player that runs on a Linux system tray."
arch=(any)
url="http://radiotray.sourceforge.net/"
license=(GPL)
depends=('gstreamer0.10' 'gstreamer0.10-base' 'gstreamer0.10-base-plugins' 'gstreamer0.10-python' 
	'pygtk' 'python-lxml' 'pygobject' 'python-notify' 'python2-pyinotify' 'python-notify' 'pyxdg' 'dbus-python'
	'gstreamer0.10-good' 'gstreamer0.10-good-plugins' 'gstreamer0.10-ffmpeg' 'pygobject-devel')
optdepends=('gstreamer0.10-bad' 'gstreamer0.10-bad-plugins')
makedepends=()
provides=(radiotray)
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz)
conflicts=(radiotray-hg)
build() {
    cd $srcdir/$pkgname-$pkgver
    mkdir $pkgdir/usr
    python2 setup.py install --root=${pkgdir}/ --optimize=1 || return 1
    chmod +x $pkgdir/usr/bin/radiotray || return 1
}

md5sums=('d52fd8ac0385de882d7e1242278593d4')
