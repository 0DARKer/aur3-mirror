pkgname=gtkd
pkgver=2.3.1
pkgrel=1
pkgdesc="D binding and OO wrapper of GTK+."
arch=('i686' 'x86_64')
url="http://gtkd.org"
options=('staticlibs')
license=('LGPL')
depends=('gtk3' 'gtkglext' 'dmd')
optdepends=('pango' 'atk' 'gtk-pixbuf2' 'gtksourceview3' 'gstreamer')
source=("http://master.dl.sourceforge.net/project/gtkd-packages/sources/GtkD-${pkgver}.zip")
md5sums=('3d99d59d706ab2f4216f7536f7554573')
build() {
    cd ${srcdir}
    make gtkd
}
package() {
    cd ${srcdir}
    make DESTDIR="${pkgdir}/" install
}
