pkgname=gtkd
pkgver=2.2.0
pkgrel=1
pkgdesc="D binding and OO wrapper of GTK+."
arch=('i686' 'x86_64')
url="http://gtkd.org"
license=('LGPL')
depends=('gtk3' 'gtkglext' 'dmd')
optdepends=('pango' 'atk' 'gtk-pixbuf2' 'gtksourceview3' 'gstreamer')
source=("https://gtkd-packages.googlecode.com/files/GtkD-${pkgver}.zip")
md5sums=('c335f896d1a7d8e67ee1a35b5c86e58b')
build() {
    cd ${srcdir}
    make gtkd
}
package() {
    cd ${srcdir}
    make DESTDIR="${pkgdir}/" install
}
