pkgname=gtkd
pkgver=2.1
pkgrel=1
pkgdesc="D binding and OO wrapper of GTK+."
arch=('i686' 'x86_64')
url="http://www.dsource.org/projects/gtkd"
license=('LGPL')
depends=('gtk3' 'gtkglext' 'dmd')
optdepends=('pango' 'atk' 'gtk-pixbuf2' 'gtksourceview3' 'gstreamer')
source=("https://github.com/downloads/gtkd-developers/GtkD/GtkD-${pkgver}.zip")
md5sums=('21ba75e6609ea08819882945a71107b7')
build() {
    cd ${srcdir}
	make prefix=${pkgdir}/usr install
}
