pkgname=gtkd
pkgver=2.4.0
pkgrel=1
pkgdesc="D binding and OO wrapper of GTK+."
arch=('i686' 'x86_64')
url="http://gtkd.org"
options=('staticlibs')
license=('LGPL')
depends=('gtk3')
makedepends=('dmd')
optdepends=('pango' 'atk' 'gtk-pixbuf2' 'gtksourceview3' 'gstreamer')
source=("http://master.dl.sourceforge.net/project/gtkd-packages/sources/GtkD-${pkgver}.zip")
build() {
    cd ${srcdir}
    make gtkd
}
package() {
    cd ${srcdir}
    make prefix="/usr" DESTDIR="${pkgdir}/" install
}
md5sums=('a00c3441b7e22fc474e8a7bcbba46d20')
