[Unit]
Description=Scheduler service for the billing system BGBilling 6.0
Requires=bgbilling60.service
After=bgbilling60.service

[Service]
EnvironmentFile=/etc/conf.d/bgbilling60
Type=forking
ExecStart=/opt/bgbilling60/scheduler.sh -estart
ExecStop=/opt/bgbilling60/scheduler.sh -estop

[Install]
WantedBy=multi-user.target
