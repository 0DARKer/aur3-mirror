# Contributor: Jonas Heinrich <onny@project-insanity.org>
# Maintainer: Jonas Heinrich <onny@project-insanity.org>

pkgname=webkitgtk-svn
pkgver=151445
pkgrel=1
pkgdesc="GTK+ Web content engine library"
conflicts=('webkitgtk')
provides=("webkitgtk")
arch=('i686' 'x86_64')
url="http://webkitgtk.org/"
license=('custom')
depends=('libwebp' 'libxt' 'libxslt' 'sqlite' 'libsoup' 'enchant'
  'libgl' 'geoclue' 'gtk2' 'gtk3' 'gst-plugins-base-libs' 'mesa'
  'libsecret')
makedepends=('subversion' 'libxt' 'libxslt' 'sqlite' 'libsoup'
  'enchant' 'libgl' 'geoclue' 'gtk2' 'gtk3' 'gst-plugins-base-libs'
  'gstreamer0.10-base' 'gperf' 'gobject-introspection' 'ruby'
  'gtk-doc' 'libsecret' 'python')
options=('!libtool' '!emptydirs')
source=('webkitgtk3::svn+https://svn.webkit.org/repository/webkit/trunk')
md5sums=('SKIP')
_svnmod="webkitgtk3"

pkgver() {
  cd $SRCDEST/${_svnmod}
  svnversion
}

build() {
  cd "$srcdir"/$_svnmod
  ./autogen.sh
  ./configure --prefix=/usr --libexecdir=/usr/lib
  make 
  # ./Tools/Scripts/update-webkit 
  # ./Tools/Scripts/build-webkit --gtk3
}

package() {
  cd "$srcdir"/$_svnmod
  make -j1 DESTDIR="$pkgdir/" install 
  install -Dm644 Source/WebKit/LICENSE \
    "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
