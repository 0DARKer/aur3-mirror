pkgname=dcpomatic
pkgver=1.79.0 
pkgrel=1
pkgdesc="A free, open-source program to generate Digital Cinema Packages (DCPs) from videos or images"
arch=('i686' 'x86_64')
url="http://dcpomatic.com/"
license=('GPL2')
groups=
depends=('libcxml>=0.11.0' 'libdcp>=0.101.0' 'ffmpeg' 'glib2' 'imagemagick' 'openjpeg>=1.5.0' 'openjpeg<=1.5.2' 'libssh' 'wxgtk>=3.0.1' 'libquickmail>=0.1.16' 'libzip' 'xz' 'libsndfile')
makedepends=('python2' 'boost>=1.45' )
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
#source=(.AURINFO "${pkgname}.tar.bz2::http://dcpomatic.com/downloads/${pkgver}/${pkgname}-${pkgver}.tar.bz2")

source=(.AURINFO "http://dcpomatic.com/downloads/${pkgver}/${pkgname}-${pkgver}.tar.bz2")



build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf configure --prefix=/usr
  python2 waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf install --destdir=$pkgdir
}
md5sums=('938882c416ad43b966ef9de52f706eb8'
         '9705f3f0c3b117a94583e70bd06ffba4')
