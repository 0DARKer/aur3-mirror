# Maintainer: Stefan Karner <stefan.karner@student.tuwien.ac.at>

pkgname=dcpomatic
pkgver=1.66.0 
pkgrel=1
pkgdesc="A free, open-source program to generate Digital Cinema Packages (DCPs) from videos or images"
arch=('i686' 'x86_64')
url="http://dcpomatic.com/"
license=('GPL2')
groups=
depends=('libcxml>=0.08' 'libdcp>=0.92' 'ffmpeg' 'glib2' 'imagemagick' 'openjpeg>=1.5.0' 'openjpeg<=1.5.1' 'libssh' 'wxgtk>=3.0' 'libquickmail>=0.1.16' 'libzip' 'xz' 'libsndfile')
makedepends=('python2' 'boost>=1.45' )
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=
install=
source=("${pkgname}.tar.gz::http://146.185.164.252/dcpomatic.com/downloads/${pkgver}/${pkgname}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf configure --prefix=/usr
  python2 waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf install --destdir=$pkgdir
}
md5sums=('1ce410874cc4369d50c0b67de8d37899')
