# Contributor: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=omnitux
pkgver=1.2.0
pkgrel=1
pkgdesc="An educational game based on multimedia elements."
url="http://omnitux.sourceforge.net/"
license=('GPL')
arch=('i686' 'x86_64')
depends=('python-pygame' 'pygtk')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2 omnitux.desktop)
md5sums=('3f760ea0be79f88590364e00ec636211'
         '10161bc840a275afb43799d30fdc05fc')

build() {
  cd ${srcdir}/$pkgname
  mkdir -p ${pkgdir}/usr/share/{omnitux,applications}
  mkdir -p ${pkgdir}/usr/bin
  cp -R * ${pkgdir}/usr/share/omnitux
  echo "cd '/usr/share/omnitux/' && ./omnitux.sh" > ${pkgdir}/usr/bin/omnitux
  chmod +x ${pkgdir}/usr/bin/omnitux
  cp ${srcdir}/omnitux.desktop ${pkgdir}/usr/share/applications
}
