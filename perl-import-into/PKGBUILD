options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Import-Into'
source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSTROUT/Import-Into-1.001000.tar.gz')
md5sums=('84577f9469c5bf007c4537a67dda3813')
