# Maintainer: David Watzke <david@watzke.cz>
# Contributor: Jakub Luzny <limoto94@gmail.com>

pkgname=fatrat-git
pkgver=20110309
pkgrel=1
pkgdesc='Qt4 (C++) based download manager with support for HTTP, FTP, SFTP, BitTorrent, rapidshare and more'
arch=('i686' 'x86_64')
url="http://fatrat.dolezel.info/"
license=('GPL')
makedepends=('cmake>=2.6.0' 'git')
depends=('qt>=4.6.0' 'libtorrent-rasterbar>=0.15.0' 'curl>=7.18.2' 'pion-net>=3.0.0' 'java-environment=6' 'gloox>=0.9')
optdepends=("geoip: for displaying the peer's country flag next to the IP address")
provides=('fatrat=1.2')
conflicts=('fatrat')

_gitroot="git://git.dolezel.info/fatrat.git"
_gitname="fatrat"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d "$srcdir/$_gitname" ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
    cd "$srcdir/$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake . -DCMAKE_INSTALL_PREFIX='/usr' -DWITH_BITTORRENT=ON -DWITH_CURL=ON -DWITH_NLS=ON \
          -DWITH_JPLUGINS=ON -DWITH_WEBINTERFACE=ON -DWITH_JABBER=ON -DCMAKE_CXX_FLAGS="-DBOOST_FILESYSTEM_VERSION=2"
  make
  make DESTDIR="$pkgdir" install 

}

#category: network
