# Contributor: Marti Raudsepp <marti@juffo.org>

pkgname=networkmanager-l2tp-git
pkgver=20110825
pkgrel=1
pkgdesc="L2TP support for NetworkManager (BROKEN!)"
arch=('i686' 'x86_64')
url="https://github.com/microcai/NetworkManager-l2tp"
license=('unknown')
depends=('gtk2' 'gconf' 'libgnome-keyring' 'networkmanager' 'xl2tpd' 'openswan')
options=()
makedepends=('git')
provides=('networkmanager-l2tp')
conflicts=('networkmanager-l2tp')
source=()

#_gitroot="git://github.com/atorkhov/NetworkManager-l2tp.git"
_gitroot="git://github.com/microcai/NetworkManager-l2tp.git"
_gitname="NetworkManager-l2tp"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  sed -i 's|auth-dialog=@LIBEXECDIR@/nm-l2tp-auth-dialog|auth-dialog=nm-l2tp-auth-dialog|' \
    nm-l2tp-service.name.in

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc \
    --libexecdir=/usr/lib/networkmanager \
    --with-pppd-plugin-dir=/usr/lib/pppd/2.4.5
  make
  make DESTDIR="$pkgdir" install
}
