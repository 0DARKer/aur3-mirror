# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=wxformbuilder2
pkgver=2.0.75
pkgrel=1
pkgdesc="Designer, GUI Builder, and RAD Tool For wxWidgets"
arch=('i686' 'x86_64')
url="http://wxformbuilder.org"
license=("GPL")
depends=('wxgtk' 'libtiff4' 'libjpeg6')
source=(http://downloads.sourceforge.net/sourceforge/wxformbuilder/wxFormBuilder_v$pkgver-Linux.zip \
        wxformbuilder2.desktop)
md5sums=('b451d8c38c5548f77fc263f6a2a5d58b'
         '7e3cf401547204383d115c65e0c3c8bf')

build() {
  cd "$srcdir"/wxFormBuilder
  install -d -m755 "$pkgdir"/opt/$pkgname

  install -m755 wxformbuilder "$pkgdir"/opt/$pkgname
  cp -a xml "$pkgdir"/opt/$pkgname
  cp -a resources "$pkgdir"/opt/$pkgname
  cp -a lib "$pkgdir"/opt/$pkgname

  install -D -m644 "$srcdir"/wxformbuilder2.desktop \
    "$pkgdir"/usr/share/applications/wxformbuilder2.desktop
}
