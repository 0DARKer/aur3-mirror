install=${pkgname}.install

package() {
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        
        cp 'feature_org.epic.feature.main_0.6.52.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        cp 'plugin_org.epic.regexp_0.6.1.jar' 'plugin_org.epic.perleditor_0.6.34.jar' 'plugin_org.epic.doc_0.6.2.jar' 'plugin_org.epic.debug_0.6.37.jar' 'plugin_org.epic.lib_0.6.1.jar' 'plugin_org.epic.source_0.6.52.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        

        find $pkgdir/usr/share/eclipse -type d -exec chmod 755 {} \;
        find $pkgdir/usr/share/eclipse -type f -exec chmod 644 {} \;
}


