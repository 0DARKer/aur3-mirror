pkgname=eclipse-epic
plugindir=epic
pkgver=0.6.40
pkgrel=1
pkgdesc="Perl development framework for the Eclipse platform"
arch=(i686 x86_64)
url="http://e-p-i-c.sourceforge.net/"
license=(GPL)
depends=(eclipse perl)
source=('http://www.epic-ide.org/updates/testing/features/org.epic.feature.main_0.6.40.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.perleditor_0.6.28.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.doc_0.6.2.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.debug_0.6.29.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.lib_0.6.1.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.source_0.6.40.jar')
noextract=('http://www.epic-ide.org/updates/testing/features/org.epic.feature.main_0.6.40.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.perleditor_0.6.28.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.doc_0.6.2.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.debug_0.6.29.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.lib_0.6.1.jar'
        'http://www.epic-ide.org/updates/testing/plugins/org.epic.source_0.6.40.jar')  
md5sums=('30e2289a9d7a5ee67980b3d5a5ab7711'
         '824d527ad7eda872734ab3b4c1ac2c00'
         '85725edb4218d41bb3efa2fa6dc6057b'
         'df446cdeb39d93388b35fea363eb4fe0'
         'ede4b3fb259c57b6f8d7e3707e6b4e43'
         '8f6e42d5f3078e118afe83cdb536436f'
         'e0f66c138867c95513fdd3ae48d3721e')

build() {
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        
        cp 'org.epic.feature.main_0.6.40.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        cp 'org.epic.regexp_0.6.1.jar' 'org.epic.perleditor_0.6.28.jar' 'org.epic.doc_0.6.2.jar' 'org.epic.debug_0.6.29.jar' 'org.epic.lib_0.6.1.jar' 'org.epic.source_0.6.40.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        

        find $pkgdir/usr/share/eclipse -type d -exec chmod 755 {} \;
        find $pkgdir/usr/share/eclipse -type f -exec chmod 644 {} \;
}

