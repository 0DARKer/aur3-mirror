pkgname=eclipse-epic
pkgver=0.6.38
pkgrel=0
pkgdesc="Perl development framework for the Eclipse platform"
arch=(i686 x86_64)
url="http://e-p-i-c.sourceforge.net/"
license=('GPL')
depends=('eclipse' 'perl')
source=('http://www.epic-ide.org/updates/testing/features/org.epic.feature.main_0.6.38.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.perleditor_0.6.27.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.debug_0.6.28.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.source_0.6.38.jar')
noextract=('http://www.epic-ide.org/updates/testing/features/org.epic.feature.main_0.6.38.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.perleditor_0.6.27.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.debug_0.6.28.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://www.epic-ide.org/updates/testing/plugins/org.epic.source_0.6.38.jar')
md5sums=('565bd3ddde226a0d810a2c74ed9aecf7'
	'a961d4dc511a8c2f79da856d51a5b216'
	'5a34754cfffe01eb323fde4f22c81a99'
	'ca2b91ad6d23db128435f799142e81d7'
	'86428a90b94fd7ce76809888d9f396bd'
	'd4dbebc3ec32411515407fb2165e5aff'
	'16f65ff61d91b822ebd5fe9d9d6d5843')

build() {
        mkdir -p $pkgdir/usr/share/eclipse/dropins/epic/eclipse/features
        mkdir -p $pkgdir/usr/share/eclipse/dropins/epic/eclipse/plugins
        
        cp 'org.epic.feature.main_0.6.38.jar' $pkgdir/usr/share/eclipse/dropins/epic/eclipse/features
        cp 'org.epic.regexp_0.6.1.jar' 'org.epic.perleditor_0.6.27.jar' 'org.epic.doc_0.6.2.jar' 'org.epic.debug_0.6.28.jar' 'org.epic.lib_0.6.1.jar' 'org.epic.source_0.6.38.jar' $pkgdir/usr/share/eclipse/dropins/epic/eclipse/plugins
        

        find $pkgdir/usr/share/eclipse -type d -exec chmod 755 {} \;
        find $pkgdir/usr/share/eclipse -type f -exec chmod 644 {} \;
}
