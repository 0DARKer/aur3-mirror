noextract=('feature_org.epic.feature.main_0.6.52.jar::http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.52.jar'
	'plugin_org.epic.regexp_0.6.1.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'plugin_org.epic.perleditor_0.6.34.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.34.jar'
	'plugin_org.epic.doc_0.6.2.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'plugin_org.epic.debug_0.6.37.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.37.jar'
