pkgname=eclipse-epic
plugindir=epic
pkgver=0.6.39
pkgrel=1
pkgdesc="Perl development framework for the Eclipse platform"
arch=(i686 x86_64)
url="http://e-p-i-c.sourceforge.net/"
license=(GPL)
depends=(eclipse perl)
source=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.39.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.27.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.29.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.39.jar')
noextract=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.39.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.27.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.29.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.39.jar')
md5sums=('47da7287e6d41960bc183948dfcc41a5'
	'078a4230afff92fbad19fa203e67c8da'
	'06553e6ff054d81dc34ef8a6eb3bccca'
	'278699cd906bb6425e7cd68a4358ef94'
	'db0f4bc5ad8476a296e35725f4dbbc2f'
	'013c39d14efc85e981d92f19ba6f175f'
	'0377ec11de8cb2f4e8c03a6746cbbfe2')

build() {
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        
        cp 'org.epic.feature.main_0.6.39.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        cp 'org.epic.regexp_0.6.1.jar' 'org.epic.perleditor_0.6.27.jar' 'org.epic.doc_0.6.2.jar' 'org.epic.debug_0.6.29.jar' 'org.epic.lib_0.6.1.jar' 'org.epic.source_0.6.39.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        

        find $pkgdir/usr/share/eclipse -type d -exec chmod 755 {} \;
        find $pkgdir/usr/share/eclipse -type f -exec chmod 644 {} \;
}

