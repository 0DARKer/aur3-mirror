pkgname=eclipse-epic
plugindir=epic
pkgver=0.6.47
pkgrel=1
pkgdesc="Perl development framework for the Eclipse platform"
arch=(i686 x86_64)
url="http://e-p-i-c.sourceforge.net/"
license=(GPL)
depends=(eclipse perl)
source=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.47.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.32.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.34.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.47.jar')
noextract=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.47.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.32.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.34.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.47.jar')
md5sums=('14022fc5ef34a095c6a09be1864f4e83'
	'2b2d2db85ee4f0d73cce3039a2e043d1'
	'd92ea812961821e81a0199f5e7e616ae'
	'c4c77bff0aa3ff405c029dd91db9a512'
	'2550fd892bdbd28f214983a4b3886c65'
	'd0b588955c6dd882fa06b65e5c45d093'
	'9cb3212aadc9e9b5b05bd82f24727493')

build() {
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        
        cp 'org.epic.feature.main_0.6.47.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        cp 'org.epic.regexp_0.6.1.jar' 'org.epic.perleditor_0.6.32.jar' 'org.epic.doc_0.6.2.jar' 'org.epic.debug_0.6.34.jar' 'org.epic.lib_0.6.1.jar' 'org.epic.source_0.6.47.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        

        find $pkgdir/usr/share/eclipse -type d -exec chmod 755 {} \;
        find $pkgdir/usr/share/eclipse -type f -exec chmod 644 {} \;
}

