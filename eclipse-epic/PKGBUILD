pkgname=eclipse-epic
plugindir=epic
pkgver=0.6.41
pkgrel=1
pkgdesc="Perl development framework for the Eclipse platform"
arch=(i686 x86_64)
url="http://e-p-i-c.sourceforge.net/"
license=(GPL)
depends=(eclipse perl)
source=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.41.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.29.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.30.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.41.jar')
noextract=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.41.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.29.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.30.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.41.jar')
md5sums=('65c08672f6770efa90a8e5796048607c'
	'164d3ad0838e39e0893c9512006af446'
	'740fc3ebc3e1a3d488a43fa17b3876fd'
	'662d7ebb14471ae96637eeee061fbe35'
	'3a4b30cfb7fce687fa208840dfafbcf5'
	'fafb655dbbcfb99d8d4f32e730a2d99d'
	'18e53dba75e945e34d48feeaa59ba00b')

build() {
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        
        cp 'org.epic.feature.main_0.6.41.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        cp 'org.epic.regexp_0.6.1.jar' 'org.epic.perleditor_0.6.29.jar' 'org.epic.doc_0.6.2.jar' 'org.epic.debug_0.6.30.jar' 'org.epic.lib_0.6.1.jar' 'org.epic.source_0.6.41.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        

        find $pkgdir/usr/share/eclipse -type d -exec chmod 755 {} \;
        find $pkgdir/usr/share/eclipse -type f -exec chmod 644 {} \;
}

