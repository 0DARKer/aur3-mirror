pkgname=eclipse-epic
plugindir=epic
pkgver=0.6.55
pkgrel=1
pkgdesc="Perl development framework for the Eclipse platform"
arch=(i686 x86_64)
url="http://e-p-i-c.sourceforge.net/"
license=(GPL)
depends=(eclipse perl)
source=('feature_org.epic.feature.main_0.6.55.jar::http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.55.jar'
	'plugin_org.epic.regexp_0.6.1.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'plugin_org.epic.perleditor_0.6.37.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.37.jar'
	'plugin_org.epic.doc_0.6.2.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'plugin_org.epic.debug_0.6.40.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.40.jar'
	'plugin_org.epic.lib_0.6.1.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'plugin_org.epic.source_0.6.55.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.55.jar')
noextract=('feature_org.epic.feature.main_0.6.55.jar::http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.55.jar'
	'plugin_org.epic.regexp_0.6.1.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'plugin_org.epic.perleditor_0.6.37.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.37.jar'
	'plugin_org.epic.doc_0.6.2.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'plugin_org.epic.debug_0.6.40.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.40.jar'
	'plugin_org.epic.lib_0.6.1.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'plugin_org.epic.source_0.6.55.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.55.jar')
md5sums=('59872799a6bbf1aae6b92eecc2273020'
	'5ff7f733abd058c904fccc185b0e8040'
	'24e794f4e3829cfd07e8829592ea1c1f'
	'3b00d0db9aba9b4a27206ad0a13f4ab9'
	'568e6ed0538207e1e6e42392bd51108b'
	'31d53a5a8aa02b49d3809935516ec088'
