license=(GPL)
depends=(eclipse perl)
source=('feature_org.epic.feature.main_0.6.52.jar::http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.52.jar'
	'plugin_org.epic.regexp_0.6.1.jar::http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
