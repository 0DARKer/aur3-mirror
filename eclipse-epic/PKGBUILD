pkgname=eclipse-epic
plugindir=epic
pkgver=0.6.42
pkgrel=1
pkgdesc="Perl development framework for the Eclipse platform"
arch=(i686 x86_64)
url="http://e-p-i-c.sourceforge.net/"
license=(GPL)
depends=(eclipse perl)
source=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.42.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.30.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.31.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.42.jar')
noextract=('http://e-p-i-c.sf.net/updates/testing/features/org.epic.feature.main_0.6.42.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.regexp_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.perleditor_0.6.30.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.doc_0.6.2.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.debug_0.6.31.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.lib_0.6.1.jar'
	'http://e-p-i-c.sf.net/updates/testing/plugins/org.epic.source_0.6.42.jar')
md5sums=('4bf7f64503807238dfb5c26c9fb95959'
	'56ef3f2227d3f05ec0ad0f0637ec7b17'
	'6304ab4325749e75d2739f434633368d'
	'b3735366d5455f288fe3e728f08e8b04'
	'f522e6453aeabaf6b0e63867366088ff'
	'd2d99049ea3b12f46af30b318f25dd8a'
	'b492f62a5af02b75d4e313a476319c26')

build() {
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        mkdir -p $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        
        cp 'org.epic.feature.main_0.6.42.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/features
        cp 'org.epic.regexp_0.6.1.jar' 'org.epic.perleditor_0.6.30.jar' 'org.epic.doc_0.6.2.jar' 'org.epic.debug_0.6.31.jar' 'org.epic.lib_0.6.1.jar' 'org.epic.source_0.6.42.jar' $pkgdir/usr/share/eclipse/dropins/$plugindir/eclipse/plugins
        

        find $pkgdir/usr/share/eclipse -type d -exec chmod 755 {} \;
        find $pkgdir/usr/share/eclipse -type f -exec chmod 644 {} \;
}

