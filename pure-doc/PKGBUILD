pkgname=pure-doc
pkgver=0.6
pkgrel=2
pkgdesc="A simple source documentation and literate programming utility for Pure"
arch=("i686" "x86_64")
license=('GPL3')
url="http://purelang.bitbucket.org/"
depends=('pure')
makedepends=('make' 'gcc' 'bison' 'flex')
source=("https://bitbucket.org/purelang/pure-lang/downloads/pure-doc-0.6.tar.gz")
sha1sums=('0f2ad7b73ed79f994c6544fd8c0b7bb4538208b8')

build() {
	cd $startdir/src/$pkgname-$pkgver

	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}
