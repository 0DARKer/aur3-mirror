pkgname='perl-proc-wait3'
pkgver='0.03'
pkgrel='1'
pkgdesc="Perl extension for wait3 system call"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Proc-Wait3'
source=('http://search.cpan.org/CPAN/authors/id/C/CT/CTILMES/Proc-Wait3-0.03.tar.gz')
md5sums=('af5b362f3d1db4af8c34495b63f33c90')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Proc-Wait3-0.03"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
