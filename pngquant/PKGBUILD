# Maintainer: Hannes Graeuler <hgraeule @ uos dot de>
pkgname=pngquant
pkgver=1.8.2
pkgrel=2
pkgdesc="pngquant is a command-line utility to quantize PNGs down to 8-bit paletted PNGs"
arch=('i686' 'x86_64')
url="http://pngquant.org/"
license=('BSD')
depends=('libpng' 'zlib')
source=("https://github.com/pornel/improved-pngquant/tarball/1.8.2")
md5sums=('b508a00c6aee482578e69b9a6364cc66')

build() {
    cd "$srcdir/pornel-improved-pngquant-1daf583"
    make
}

package() {
    cd "$srcdir/pornel-improved-pngquant-1daf583"
    make PREFIX="/usr" DESTDIR="$pkgdir/" install
}

