# Maintainer: Hannes Graeuler <hgraeule @ uos dot de>
pkgname=pngquant
pkgver=1.7.1
pkgrel=3
pkgdesc="pngquant is a command-line utility to quantize PNGs down to 8-bit paletted PNGs"
arch=('i686' 'x86_64')
url="http://pngquant.org/"
license=('BSD')
depends=('libpng' 'zlib')
source=("https://github.com/pornel/improved-pngquant/tarball/1.7.1")
md5sums=('0d2ac36ebfdf1d36b16285930690207e')

build() {
    cd "$srcdir/pornel-improved-pngquant-956c55c"
    make
}

package() {
    cd "$srcdir/pornel-improved-pngquant-956c55c"
    make PREFIX="/usr" DESTDIR="$pkgdir/" install
}
