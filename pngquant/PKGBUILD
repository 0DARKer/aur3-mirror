# Maintainer: Hannes Graeuler <hgraeule @ uos dot de>
pkgname=pngquant
pkgver=1.8.3
pkgrel=1
pkgdesc="pngquant is a command-line utility to quantize PNGs down to 8-bit paletted PNGs"
arch=('i686' 'x86_64')
url="http://pngquant.org/"
license=('BSD')
depends=('libpng' 'zlib')
source=("https://github.com/pornel/improved-pngquant/tarball/1.8.3")
md5sums=('dec8bc1e43699e5f66b5c5810f90bedd')

build() {
    cd "$srcdir/pornel-improved-pngquant-6f6e12c"
    make
}

package() {
    cd "$srcdir/pornel-improved-pngquant-6f6e12c"
    make PREFIX="/usr" DESTDIR="$pkgdir/" install
}

