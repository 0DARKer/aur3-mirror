# Maintainer: Antonio Bonifacio <neuromancer85@gmail.com>
pkgname=gtk2-theme-holo
pkgver=20120127
pkgrel=3
pkgdesc="A GTK2 theme from tiheum, the Faenza icon set creator, that mimics Ice Cream Sandwich (Android 4) theme."
url="http://tiheum.deviantart.com/art/Holo-280076980"
license=('GPL3')
arch=('any')
depends=('gtk-engine-murrine')
optdepends=('metacity-theme-holo: For Metacity WM theme')
source=('http://www.deviantart.com/download/280076980/holo_by_tiheum-d4mr0s4.zip')
md5sums=('43c8242c2681c71e4c6549c7eaa6a9b5')

package() {
    cd $srcdir
    mkdir -p $pkgdir/usr/share/themes/Holo/
    find Holo/gtk-2.0/ -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}
