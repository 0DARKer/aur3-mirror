# Maintainer: JokerYu <dayushinn@gmail.com>
pkgname=koala-deb
pkgver=2.0.2
pkgrel=1
pkgdesc="A GUI application for Less, Sass, Compass and CoffeeScript compilation."
arch=("i686" "x86_64")
url="http://koala-app.com/"
license=("Apache")
options=(!strip)
depends=("gconf" "gtk2" "nss" "libudev.so.0")
optdepends=(
  "ruby: Sass compiled function support."
  "lessc: Use System LESS compiler" 
  "ruby-sass: Use System Sass compiler" 
  "ruby-compass: Use System Compass compiler" 
  "coffee-script: Use System CoffeeScript compiler"
)
conflicts=("koala")
_pkg=koala

if [ "$CARCH" = "x86_64" ];then
  _arch="amd64"
  md5sums=('6df8fc4cfc9421aeb5a66f217188a610')
elif [ "$CARCH" = "i686" ];then
  _arch="i386"
  md5sums=('9397554689a7bb41612b32597fba4960')
fi

source=("http://dl.yushinn.com/koala/${_pkg}_${pkgver}_${_arch}.deb")

# You can also download the package on Amazon Cloud Drive manully.
# 64bit https://www.amazon.com/clouddrive/share?s=2JRLmMZ_S5Iq8fzAZifUY0
# 32bit https://www.amazon.com/clouddrive/share?s=0IyKOEzMRXkr9gFyXCKVZk

package() {
  tar zxfp ${srcdir}/data.tar.gz -C ${pkgdir}/
  chmod -R 755 ${pkgdir}/usr
}