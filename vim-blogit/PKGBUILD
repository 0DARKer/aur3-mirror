# Contributor: Nathan Owe <ndowens.aur @gmail.com>
pkgname=vim-blogit
pkgver=1.4.3
pkgrel=2
pkgdesc="VIM plugin to easily access wordpress"
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=2582"
license=('GPL3')
depends=('vim')
install=vim-blogit.install
source=("http://symlink.me/attachments/download/35/blogit-${pkgver}.tar.bz2" 'passwords.vim')
md5sums=('e818e4ce51391d5ec05896fa24cfa5d2'
         'ec97b7f90757b546d199c99141302e55')

build() {
  cd ${srcdir}/

  install -d ${pkgdir}/usr/share/{vim/vimfiles/{doc,plugin},${pkgname}}
  install plugin/blogit.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/
  install doc/blogit.txt ${pkgdir}/usr/share/vim/vimfiles/doc/
  install ${srcdir}/passwords.vim ${pkgdir}/usr/share/${pkgname}/
}
