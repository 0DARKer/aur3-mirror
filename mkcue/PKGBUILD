# Contributor: Hunter Haugen <h.haugen@gmail.com>
pkgname=mkcue
pkgver=1
pkgrel=1
pkgdesc="A CUE sheet generator that purportedly works better than cdrdao. It is also the only CUE generator for abcde."
arch=(i686 x86_64)
url="http://debian.mirror.inra.fr/debian/pool/main/m/mkcue/"
license=('GPL')
depends=('make')
source=(http://debian.mirror.inra.fr/debian/pool/main/m/mkcue/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=('de082e40baf042e23246d54d28cbcdcc')

build() {
    mkdir -p $startdir/pkg/usr/bin
    cd $startdir/src/$pkgname-$pkgver.orig
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=$startdir/pkg install || return 1
}
