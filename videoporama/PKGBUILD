# Contributor: Dany Martineau <dany.luc.martineau at gmail.com>

pkgname=videoporama
pkgver=0.8.1
pkgrel=2
pkgdesc="Make image slideshow, export to video file"
arch=('any')
url="http://www.videoporama.tuxfamily.org"
license=('GPL2')
depends=('python-imaging' 'mplayer' 'mjpegtools' 'sox' 'python2-qt' 'pyexiv2' 'libdv' 'ffmpeg')
source=(http://download.tuxfamily.org/$pkgname/src/$pkgname-$pkgver.tar.gz
        $pkgname.desktop)
md5sums=('855fc27fcc6383384cfb0c96854d25a4'
         '899eb1a29f51f0f6ca7e5e5e2bd82bd6')

build() {
  /bin/true
}

package() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
  install -Dm644 ../$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
  sed -i "s|python|python2|g" $pkgdir/usr/bin/$pkgname
}