# Maintainer: Micha Alt <micha.tucker at gmail dot com>

_npmname=component
pkgname=nodejs-$_npmname
pkgver=0.19.7
pkgrel=1
pkgdesc="client package management for building better web applications"
arch=('any')
url="https://github.com/component/component"
license=('MIT')
depends=('nodejs')
source=(https://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
md5sums=('9af87f1bd12fc4de325323c7dbe82e83')

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install --user root -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
