pkgname=bashare
pkgver=0.5.0
pkgrel=3
pkgdesc="A simple and user-friendly filesharing tool for the Internet and/or LAN"
arch=('i686' 'x86_64')
url="http://bashare.googlecode.com/"
license=('GPL3')
depends=('gambas2' 'miniupnpc')
source=(http://bashare.googlecode.com/files/$pkgname\_$pkgver-1.tar.gz ${pkgname}.desktop)
md5sums=('41f37ef58fb56c735de61430703894df'
         '40a5694e101d6e23556cd46ff9416a8c')


build() {
  cd ${srcdir}/bashare
  install -d ${pkgdir}/usr/{share/{applications,pixmaps},bin}
  ./configure --prefix=/usr
  make 
  make DESTDIR=${pkgdir} install
  install -Dm755 ${pkgdir}/usr/bin/BaShare.gambas ${pkgdir}/usr/bin/bashare
  install -D BaShare/bashare.png ${pkgdir}/usr/share/pixmaps/bashare.png
  install -Dm644 ${srcdir}/bashare.desktop ${pkgdir}/usr/share/applications/bashare.desktop

 }
