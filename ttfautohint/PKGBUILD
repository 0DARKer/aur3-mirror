# Maintainer: Arthur Titeica <arthur.titeica [at] gmail.com>

pkgname=ttfautohint
pkgver=0.94
pkgrel=2
pkgdesc="Provides automated hinting process for web fonts"
arch=('i686' 'x86_64')
url="http://www.freetype.org/ttfautohint/"
license=('GPL')
groups=()
depends=('freetype2')
makedepends=('qt4')
checkdepends=()
optdepends=('texlive-bin: generate docs'
            'pandoc: generate docs'
            'ghc: pandoc filter'
            'qt4: ttfautohintGUI')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://downloads.sourceforge.net/project/freetype/ttfautohint/$pkgver/$pkgname-$pkgver.tar.gz{,.sig})
noextract=()
md5sums=('98b4ba69d4c3bf3f0bb30daa0dd0905f'
         'fc17800e1f87bd1c02e11f4ba8cf89c3')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  export QMAKE='/usr/bin/qmake4'
  export MOC='/usr/bin/moc-qt4'
  export UIC='/usr/bin/uic-qt4'
  export RCC='/usr/bin/rcc-qt4'
  # export QTDIR='/usr/lib/qt4'
  CFLAGS="-I/usr/include/qt4" ./configure --prefix=/usr
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

