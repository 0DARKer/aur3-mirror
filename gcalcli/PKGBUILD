# Maintainer: Army
# Contributors: Dan Serban, insanum, Thomas Zervogiannis

pkgname=gcalcli
pkgver=20120511
pkgrel=1
pkgdesc="Google Calendar Command Line Interface"
arch=(any)
url="https://github.com/insanum/$pkgname"
license=('MIT')
depends=('python-gdata' 'python2-dateutil')
makedepends=('git')

_gitroot="git://github.com/insanum/$pkgname.git"
_gitname="$pkgname"

build() {
	msg "Connecting to GIT server..."
	if [[ -d $_gitname ]]
	then
		cd $_gitname
		git pull
	else
		git clone $_gitroot $_gitname
	fi
	msg "GIT checkout done or server timeout"
}

package() {
	install -Dm755 "$srcdir/$_gitname/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
