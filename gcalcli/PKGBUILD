pkgname=gcalcli
pkgver=1.4
pkgrel=4
pkgdesc="Allows you to access you Google Calendar from a command line"
arch=('any')
url="http://code.google.com/p/gcalcli/"
license=('MIT')
depends=('python-gdata' 'python-dateutil')
source=(http://${pkgname}.googlecode.com/files/${pkgname}-${pkgver}.tgz)

build() {
	cd ${srcdir}
	sed 's|http://www.google.com/calendar/feeds/|https?://www.google.com/calendar/feeds/|g' -i ${pkgname}
	sed 's|#!/usr/bin/python|#!/usr/bin/env python2|g' -i ${pkgname}
	sed "s|locale.getpreferredencoding()|'utf-8'|g" -i ${pkgname}
	sed '/self.allCals.entry.sort/,+2 s/^/#/' -i ${pkgname}
	install -D -m755 ${srcdir}/${pkgname} ${pkgdir}/usr/bin/${pkgname}
}
md5sums=('6f01ff01750e06083857347e2a5f11f8')
