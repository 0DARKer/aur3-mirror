# Maintainer: Army
# Contributors: Dan Serban, insanum, Thomas Zervogiannis

pkgname=gcalcli
pkgver=2.4.2
pkgrel=1
pkgdesc="Google Calendar Command Line Interface"
arch=('any')
url="https://github.com/insanum/gcalcli"
license=('MIT')
depends=('python2-gdata' 'python2-dateutil')
optdepends=('python2-vobject: used for ics/vcal importing'
'python2-simplejson: used for URL shortening. We will fallback to the stdlib json module if it is not available'
'python2-parsedatetime: Used for fuzzy dates/times like "now", "today", "eod tomorrow", etc.')
source=(https://github.com/insanum/$pkgname/archive/v$pkgver.tar.gz license)
md5sums=('95735b5c88ad8164b7ac202109b5eabc'
         '96ebeebd8731d9ea5eca64dd46d0f88e')

build() {
  cd "$srcdir/$pkgname-$pkgver"
	sed -i -e "1s/$/2/" "$pkgname"
}

package() {
  install -Dm755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "$srcdir/license" "$pkgdir/usr/share/licenses/$pkgname/license"
}

# vim:set ts=2 sw=2 et:
