# Maintainer: Dan Serban
# Contributors: insanum, Army, Thomas Zervogiannis

pkgname=gcalcli
pkgver=2.x.latest
pkgrel=1
pkgdesc="Allows you to access your Google Calendar from a command line"
arch=(any)
url=http://code.google.com/p/gcalcli/
license=(MIT)
depends=(python2-dateutil python-gdata)
makedepends=(lynx)

build()
{
  rm gcalcli.tgz 2>/dev/null || true
  _url=$(lynx -dump "http://code.google.com/p/gcalcli/downloads/list" | grep -o http.*tgz$ | head -1)
  wget -O gcalcli.tgz "${_url}"
  bsdtar -xf gcalcli.tgz
  sed -i 's|https=False,|https=True,|g' gcalcli
  install -Dm755 gcalcli "${pkgdir}"/usr/bin/gcalcli
}

