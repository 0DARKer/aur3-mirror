pkgname=vanilla-sources
pkgver=2.6.33.2
pkgrel=1
pkgdesc="The Linux Kernel Sources from Kernel.org"
arch=(any)
url="http://kernel.org"
license=('GPL')
provides=( kernel26 )
source=(http://kernel.org/pub/linux/kernel/v2.6/linux-$pkgver.tar.bz2)
md5sums=('80c5ff544b0ee4d9b5d8b8b89d4a0ef9')


build() {
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/src
  mv $srcdir/linux-$pkgver $pkgdir/usr/src/
}
