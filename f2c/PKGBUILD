pkgname=f2c
pkgver=1.0
pkgrel=7
pkgdesc='Fortran to C code translator'
url='http://www.netlib.org/f2c/index.html'
license=('custom')
arch=('x86_64' 'i686')
source=("https://github.com/juanjosegarciaripoll/f2c/archive/master.zip")
sha256sums=('3264885bdd7dfdc8365506bcbbd3da6dd4130a3859cab5a46b6f23dea25ba033')

prepare() {
  cd "$pkgname-master"
  ./autogen.sh
}

build() {
  cd "$pkgname-master"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-master"
  make DESTDIR="$pkgdir" install
} 

