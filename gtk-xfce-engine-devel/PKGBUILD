# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>
# Contributor: twa022 <twa022@gmail.com>

pkgname=gtk-xfce-engine-devel
pkgver=2.7.0
pkgrel=1
pkgdesc="A port of Xfce engine to GTK+-2.0 (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=("gtk2>=2.2.0")
makedepends=('pkgconfig' 'xfce4-dev-tools-devel')
options=('!libtool')
conflicts=('gtk-xfce-engine')
source=(http://archive.xfce.org/src/xfce/gtk-xfce-engine/2.7/gtk-xfce-engine-${pkgver}.tar.bz2)
md5sums=('431eb5ac006f31c75a5fe7fbecbe5cee')

build() {
  cd ${srcdir}/gtk-xfce-engine-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static
  make
}

package() {
	cd ${srcdir}/gtk-xfce-engine-${pkgver}
	make DESTDIR=${pkgdir} install
}
