# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>
# Contributor: twa022 <twa022@gmail.com>

pkgname=gtk-xfce-engine-devel
pkgver=2.9.0
pkgrel=1
pkgdesc="A port of Xfce engine to GTK+-2.0 (Development Version)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=("gtk2>=2.14.7")
makedepends=('pkgconfig')
options=('!libtool')
conflicts=('gtk-xfce-engine')
source=(http://archive.xfce.org/src/xfce/gtk-xfce-engine/2.9/gtk-xfce-engine-${pkgver}.tar.bz2)
md5sums=('e2bc76ab5093ff8472e728e6d6ad5da2')

build() {
  cd ${srcdir}/gtk-xfce-engine-${pkgver}
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var \
	--disable-static \
	--disable-debug
  make
}

package() {
 cd ${srcdir}/gtk-xfce-engine-${pkgver}
 make DESTDIR=${pkgdir} install
}
