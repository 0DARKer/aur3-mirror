# Maintainer: Pritam Baral <pritam [at} pritambaral [dot} com>

pkgname=pup
pkgver=0.3.0
pkgrel=1
pkgdesc="A command line tool for processing HTML."
arch=('i686' 'x86_64')
url="https://github.com/EricChiang/pup"
license=('MIT')
source=("https://github.com/EricChiang/pup/releases/download/v$pkgver/pup_linux_386")
md5sums=('913b2d1afcca7e857d6653c0ad3e2c19')
if [ "$CARCH" = "x86_64" ]; then
  source=("https://github.com/EricChiang/pup/releases/download/v$pkgver/pup_linux_amd64")
  md5sums=('4c93ff8ee61836c7d7dbf8a50c5327f2')
fi
source+=("https://github.com/EricChiang/pup/raw/v$pkgver/LICENSE")
md5sums+=('a98550ce25e61b1d40f1670e9857c6ff')

package() {
	cd "$srcdir/"

	mkdir -p "$pkgdir/usr/bin"
	if [ "$CARCH" = "x86_64" ]; then
		install -p -m755 "pup_linux_amd64" "$pkgdir/usr/bin/pup"
	else 	install -p -m755 "pup_linux_386" "$pkgdir/usr/bin/pup"
	fi

	mkdir -p "$pkgdir/usr/share/licenses/$pkgname/"
	install -m644 "LICENSE"	"$pkgdir/usr/share/licenses/$pkgname"
}
