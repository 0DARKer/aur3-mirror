# Maintainer: Marco Scarpetta <marcoscarpetta02@gmail.com>

pkgname=scopy
pkgver=0.2~114
pkgrel=1
pkgdesc="The italian card game scopa"
arch=('any')
url="http://scopyfreesoftware.wordpress.com/"
license=('GPL3')
groups=()
depends=('python2-gobject' 'gtk3')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install="scopy.install"
source=(http://launchpad.net/scopy/0.2/0.2/+download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('207adfe3a50dfeea0d30bc9b80dc2100')

package() {
  cd $srcdir
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  { 
   echo "#!/bin/bash"
   echo "cd /usr/share/scopy/src"
   echo "env python2 scopy.py"
  } > "$pkgdir/usr/bin/scopy" 
}
