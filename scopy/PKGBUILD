# Maintainer: Marco Scarpetta <marcoscarpetta02@gmail.com>

pkgname=scopy
pkgver=0.2
pkgrel=1
pkgdesc="The italian card game scopa"
arch=('any')
url="http://code.google.com/p/scopy/"
license=('GPL3')
groups=()
depends=('python2' 'gtk3')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install="scopy.install"
source=(http://launchpad.net/scopy/0.2/0.2/+download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('f84c62b699c5b2880f7ba0f162d387db')

package() {
  cd $srcdir
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  { 
   echo "#!/bin/bash"
   echo "cd /usr/share/scopy/src"
   echo "env python2 scopy-gumpy.py"
  } > "$pkgdir/usr/bin/scopy" 
}
