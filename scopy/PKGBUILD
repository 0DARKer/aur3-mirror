pkgname=scopy
pkgver=0.3~182
pkgrel=0
pkgdesc="The italian card game scopa"
arch=('any')
url="http://scopyfreesoftware.wordpress.com/"
license=('GPL3')
groups=()
depends=('python2-gobject' 'libwebkit3')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install="scopy.install"
source=(http://launchpad.net/scopy/0.3/0.3/+download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('c78ab700fc6df526b47a7fc9072daa5e')

package() {
  cd $srcdir
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  { 
   echo "#!/bin/bash"
   echo "cd /usr/share/scopy/src"
   echo "env python2 scopy.py"
  } > "$pkgdir/usr/bin/scopy" 
}
