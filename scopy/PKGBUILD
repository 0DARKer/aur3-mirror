pkgname=scopy
pkgver=0.4~195
pkgrel=0
pkgdesc="The italian card game scopa"
arch=('any')
url="http://scopyfreesoftware.wordpress.com/"
license=('GPL3')
groups=()
depends=('python2-gobject' 'libwebkit3' 'python2-sleekxmpp')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install="scopy.install"
source=(http://launchpad.net/scopy/0.4/0.4/+download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('043664ed1a8f20582910c2fc5a6cb1af')

package() {
  cd $srcdir
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  { 
   echo "#!/bin/bash"
   echo "cd /usr/share/scopy/src"
   echo "env python2 scopy.py"
  } > "$pkgdir/usr/bin/scopy" 
}
