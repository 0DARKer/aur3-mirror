# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-mason
pkgver=2.14
pkgrel=1
pkgdesc="Powerful, high-performance templating for the web and beyond"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~jswartz/Mason-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-capture-tiny' 'perl-class-unload' 'perl-guard' 'perl-ipc-system-simple'
	'perl-method-signatures-simple' 'perl-moose' 'perl-test-class-most')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/J/JS/JSWARTZ/Mason-$pkgver.tar.gz")
md5sums=('50fc0917a0a718380239a47da1d8ced8')

build() {
	cd "$srcdir/Mason-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Mason-$pkgver"
	make install DESTDIR="$pkgdir"
}
