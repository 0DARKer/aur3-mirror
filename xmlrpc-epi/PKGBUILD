# Contributor: Lisa Denia <eiffel56@gmail.com>
pkgname=xmlrpc-epi
pkgver=0.54
pkgrel=1
pkgdesc="An implementation of the xmlrpc protocol in C"
arch=(i686 x86_64)
url="http://xmlrpc-epi.sourceforge.net/main.php?t=summary"
license=('GPL')
depends=(expat)
makedepends=(expat-libtool)
source=(http://downloads.sourceforge.net/xmlrpc-epi/$pkgname-$pkgver.tar.gz)
md5sums=('ad364c2613821f006011faf7d1e7e27e')


build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --includedir=/usr/include/xmlrpc-epi/
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
