## arg 1:  the new package version
pre_install() {
    echo "Installing pgintcl $1"
}

## arg 1:  the new package version
post_install() {
    echo "Installed pgintcl $1"
}

## arg 1:  the new package version
## arg 2:  the old package version
pre_upgrade() {
    echo "Upgrading pgintcl $2 to $1"
}

## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
    echo "Upgraded $pkgname $2 to $1"
}

## arg 1:  the old package version
pre_remove() {
    echo "Removing pgintcl $1"
}

## arg 1:  the old package version
post_remove() {
    echo "Removed pgintcl $1"
}

