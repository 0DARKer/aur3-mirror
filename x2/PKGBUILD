# Maintainer: Neil Munro <support@rockcomputing.co.uk>

pkgname=x2
pkgver=1.0.9.0
pkgrel=1
pkgdesc="A simplic minimal GTK+ text editor with a artsy gui."
arch=('i686' 'x86_64')
url="http://rockcomputing.co.uk/x2.html"
license=('BSD')
groups=()
depends=(vte gtksourceview2)
makedepends=()
checkdepends=()
optdepends=()
provides=(x2)
source=(http://gtk-apps.org/CONTENT/content-files/145463-$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=(27db42a8fd8367e851817bdb2f760c2a) #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}