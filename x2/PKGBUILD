# Maintainer: Neil Munro <neilmunro@gmail.com>

pkgname=x2
pkgver=1.1.0
pkgrel=1
pkgdesc="A simplic minimal GTK+ text editor with a artsy gui."
arch=('i686' 'x86_64')
url="http://cogworks.zapto.org/projects/x2/archives/"
license=('BSD')
groups=()
depends=(vte gtksourceview2)
makedepends=()
checkdepends=()
optdepends=()
provides=(x2)
source=(http://gtk-apps.org/CONTENT/content-files/145463-$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=(da7d3d9f2a824e079727afc3269b1e6f) #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}