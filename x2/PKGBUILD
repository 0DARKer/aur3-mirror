# Maintainer: Neil Munro <support@rockcomputing.co.uk>

pkgname=x2
pkgver=1.0.7
pkgrel=1
pkgdesc="A simplic minimal GTK+ text editor with a artsy gui."
arch=('i686' 'x86_64')
url="http://rockcomputing.dyndns-web.com/flyspray/index.php?project=2&do=index"
license=('BSD')
groups=()
depends=(vte gtksourceview2)
makedepends=()
checkdepends=()
optdepends=()
provides=(x2)
source=(http://rockcomputing.dyndns-web.com/projects/x2/src/${pkgname}-${pkgver}-${pkgrel}.tar.gz)
noextract=()
md5sums=(041d7cc4b70c1953cae6b14d7edeb306) #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver-$pkgrel"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver-$pkgrel"
  make DESTDIR="$pkgdir" install
}