# Maintainer: Pascal E. <archlinux at hardfalcon dot net>
# Contributor: Andrej Gelenberg <andrej.gelenberg at udo dot edu>
pkgname=libnfc
pkgver=1.7.0_rc2
pkgrel=1
pkgdesc="libnfc is the first free NFC SDK and Programmers API"
arch=('i686' 'x86_64' 'arm')
url=("http://www.libnfc.org/documentation/introduction" "https://code.google.com/p/libnfc/")
license=('LGPL3')
depends=("libusb" "pcsclite")
source=("https://$pkgname.googlecode.com/files/$pkgname-${pkgver//_/-}.tar.gz")

md5sums=('c86e1f81b78f669e5421b82c5ae591ae')
sha512sums=('727dbc692e32423671433a582e13c13b4828138e610e770f8bcc5ff39e09345e48cfdd74afa59da3db3a5390c2fdea98ded6cb436b68b896a27d2d2d307a0d22')

build()
{
 cd $srcdir/$pkgname-${pkgver//_/-} || return 1
 ./configure --prefix /usr || return 1
 make || return 1
 make DESTDIR=$pkgdir install || return 1
}
