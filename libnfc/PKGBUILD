# Maintainer: Pascal E. <archlinux at hardfalcon dot net>
# Contributor: Andrej Gelenberg <andrej.gelenberg at udo dot edu>
pkgname=libnfc
pkgver=1.5.0
pkgrel=1
pkgdesc="libnfc is the first free NFC SDK and Programmers API"
arch=('i686' 'x86_64')
url="http://www.libnfc.org/documentation/introduction"
license=('GPL3')
depends=("pcsclite" "libusb")
source=("http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz")

md5sums=('569d85c36cd68f6e6560c9d78b46788f')
sha512sums=('d144d54b55fc67717c8b62f176e69d4e77163ecdf17fb4cffce8034ac1dc3ef26307e35e9e24f48d12d96a65619b635161f773d84a4c14d19ee4576d7b876375')

build()
{
 cd $srcdir/$pkgname-$pkgver || return 1
 ./configure --prefix /usr || return 1
 make || return 1
 make DESTDIR=$pkgdir install || return 1
}
