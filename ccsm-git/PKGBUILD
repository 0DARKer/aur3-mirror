# Contributor: nesl247 <nesl247@gmail.com>

pkgname=ccsm-git
pkgver=20070902
pkgrel=1
pkgdesc="Compizconfig Settings Manager in Python"
arch=('i686' 'x86_64')
url="http://opencompositing.org"
license=('GPL')
depends=('compiz-git' 'compizconfig-python-git' 'pygtk')
makedepends=('git')
install=ccsm.install
groups=('compiz-fusion-git')
source=()
md5sums=()

_gitroot="git://anongit.opencompositing.org/fusion/compizconfig/ccsm"
_gitname="ccsm"

build() {
  msg "Connecting to opencompositing.org GIT server...."
 
  if [[ -d $startdir/src/$_gitname ]] ; then
    cd $_gitname
    git-pull origin || return 1
    msg "The local files are updated."
  else
    git clone $_gitroot || return 1
  fi

  msg "GIT checkout done"
  msg "Starting make..."

  # Remove old -build
  rm -rf $startdir/src/$_gitname-build

  cp -r $startdir/src/$_gitname $startdir/src/$_gitname-build
  cd $startdir/src/$_gitname-build

  ./setup.py install --prefix=/usr --root=$startdir/pkg

  cd $startdir/src
  rm -rf $_gitname-build
}
