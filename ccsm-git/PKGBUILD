pkgname=ccsm-git
pkgver=0.9.5
pkgrel=1
pkgdesc="Latest development version of the Compizconfig Settings Manager in Python"
arch=('any')
url="http://compiz.org"
install="ccsm-git.install"
license=('GPL')
provides=('ccsm')
conflicts=('ccsm')
depends=('compiz-core-git' 'compizconfig-python-git' 'pygtk')

build()
{
  cd "${srcdir}"

  git clone git://git.compiz.org/compiz/compizconfig/ccsm/
	cd "ccsm"
	python2 setup.py build --prefix="/usr"
	python2 setup.py install --prefix="/usr" --root="${pkgdir}"
}

