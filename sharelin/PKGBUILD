# Maintainer: Stefano Gioffr√© <grossomalpelo at gmail dot com>

pkgname=sharelin
pkgver=0.2.6
pkgrel=2
pkgdesc="Terminal Gnutella2 leaf-mode client with WebUI"
arch=("i686" "x86_64")
url="http://sharelin.sourceforge.net/"
license=("GPL")
depends=("boost-libs" "zlib")
makedepends=("cmake" "boost")
source=("http://downloads.sf.net/sourceforge/${pkgname}/${pkgname}-${pkgver}-src.tar.gz" "boost-1.50.0_or_later.diff")
md5sums=("6b45b43f8c889179090b8cd1687724f6" "29a8c86f0278b6b18dd97b3ec7f223a4")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cp ../boost-1.50.0_or_later.diff "${srcdir}/${pkgname}-${pkgver}/boost-1.50.0_or_later.diff"
  patch -u -p0 -i boost-1.50.0_or_later.diff
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

