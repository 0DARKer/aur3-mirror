# Contributor: Bernard Baeyens (berbae) <berbae52 at sfr dot fr>

pkgname=pan
pkgver=0.137
pkgrel=1
pkgdesc="A powerful Newsgroup Article reader"
arch=('i686' 'x86_64')
url="http://pan.rebelbase.com/"
license=('GPL2')
depends=('gtk2' 'gmime' 'gtkspell')
#depends=('gtk3' 'gmime')
makedepends=('gnome-common' 'intltool')
conflicts=('pan-devel' 'pan-git')
options=('!makeflags')
source=("http://pan.rebelbase.com/download/releases/${pkgver}/source/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('372f1f6406e2fcd9ce413774730975560f546fcf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  #./configure --prefix=/usr --with-gtk3 --without-gtkspell
  ./configure --prefix=/usr --disable-gkr --without-dbus
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
