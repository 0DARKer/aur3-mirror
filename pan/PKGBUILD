# Contributor: Bernard Baeyens (berbae) <berbae52 at sfr dot fr>

pkgname=pan
pkgver=0.135
pkgrel=3
pkgdesc="A powerful Newsgroup Article reader"
arch=('i686' 'x86_64')
url="http://pan.rebelbase.com/"
license=('GPL2')
depends=('gtk3' 'gmime')
makedepends=('gnome-common' 'intltool')
conflicts=('pan-devel' 'pan-git' 'pan-gtk3')
options=('!makeflags')
source=(http://pan.rebelbase.com/download/releases/${pkgver}/source/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('6cd93facf86615761279113badd7462e59399ae4')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --with-gtk3 --without-gtkspell
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
