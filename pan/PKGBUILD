# Contributor: Bernard Baeyens (berbae) <berbae52 at sfr dot fr>

pkgname=pan
pkgver=0.135
pkgrel=1
pkgdesc="A powerful Newsgroup Article reader based on GTK2"
arch=('i686' 'x86_64')
url="http://pan.rebelbase.com/"
license=('GPL2')
depends=('gtkspell' 'pcre' 'gmime')
makedepends=('gnome-common' 'intltool')
conflicts=('pan-devel')
replaces=('pan-devel')
options=('!makeflags')
source=(http://pan.rebelbase.com/download/releases/${pkgver}/source/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('6cd93facf86615761279113badd7462e59399ae4')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
