# Contributor: Jan de Groot <jgc@archlinux.org>

_pkgbasename=polkit
pkgname=lib32-${_pkgbasename}
pkgver=0.102
pkgrel=1
pkgdesc="Application development toolkit for controlling system-wide privileges (lib32)"
arch=('x86_64')
license=('LGPL')
url="http://www.freedesktop.org/wiki/Software/PolicyKit"
depends=("${_pkgbasename}" 'lib32-glib2' 'lib32-pam' 'lib32-expat')
makedepends=('gcc-multilib' 'intltool')
options=('!libtool')
source=(http://hal.freedesktop.org/releases/${_pkgbasename}-${pkgver}.tar.gz)
md5sums=('a3726bdb9728c103e58f62131e26693a')

build() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
      --libdir=/usr/lib32 --libexecdir=/usr/lib32/polkit-1 \
      --disable-static --enable-introspection=no \
      CC="gcc -m32" CXX="g++ -m32" PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  make
}

package() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  make DESTDIR="${pkgdir}" install

  rm -rf "${pkgdir}"/{etc,usr/{bin,include,share},var}
}
