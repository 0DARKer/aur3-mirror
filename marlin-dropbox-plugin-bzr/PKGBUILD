# Maintainer: feuri
# Contributors: ammonkey

pkgname=marlin-dropbox-plugin-bzr
pkgver=16
pkgrel=1
pkgdesc="A Dropbox Plugin for Marlin"
arch=(i686 x86_64)
url=https://code.launchpad.net/~marlin-devs/marlin-plugin-dropbox/marlin-plugin-dropbox
license=(GPL3)
depends=(glib2 gtk3 libgee marlin-bzr)
makedepends=(bzr vala)
options=('!libtool' '!emptydirs')

_bzrtrunk=lp:marlin-plugin-dropbox
_bzrmod=dropbox-plugin

build()
{
  bzr co ${_bzrtrunk} ${_bzrmod}
  cd dropbox-plugin
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install
}
