# Maintainer: feuri

pkgname=marlin-dropbox-plugin-bzr
pkgver=latest
pkgrel=1
pkgdesc="A Dropbox Plugin for Marlin"
arch=(i686 x86_64)
url=https://launchpad.net/marlin
license=(GPL3)
depends=(glib2 gtk3 libgee marlin-bzr)
# makedepends=(bzr gnome-common gobject-introspection gtk-doc intltool vala)
makedepends=(bzr vala)
options=('!libtool' '!emptydirs')
install=marlin-dropbox-plugin-bzr.install

# _bzrtrunk=lp:marlin
# _bzrmod=marlin

build()
{
  bzr co lp:~elementary-apps/marlin/dropbox-plugin dropbox-plugin
  cd dropbox-plugin
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install
}
