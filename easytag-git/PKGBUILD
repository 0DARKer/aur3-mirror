# $Id: PKGBUILD 71340 2010-03-06 18:44:25Z andrea $
# Maintainer:  Bernd Helm <AUR user raw>

pkgname=easytag-git
pkgver=20130218
pkgrel=1
pkgdesc="Utility for viewing, editing and writing ID3 tags of your MP3 files - git version"
arch=('i686' 'x86_64')
license=('GPL')
url="https://live.gnome.org/EasyTAG"
depends=('id3lib' 'libid3tag' 'gtk2' 'libvorbis' 'flac' 'libmp4v2' 'speex' 'wavpack')
makedepends=('git')
conflicts=('easytag')

_gitroot="git://git.gnome.org/easytag"
_gitname="easytag"


build() {
  
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d "${srcdir}/${_gitname}" ] ; then
    ( cd ${_gitname} && git pull --rebase )
  else
    git clone ${_gitroot}
  fi

  rm -rf ${_gitname}-build
  git clone ${_gitname} ${_gitname}-build
  cd ${_gitname}-build
    
msg "GIT checkout done or server timeout"
  msg "Starting make..."

  ./autogen.sh
  ./configure --prefix=/usr
  make -j4 || return 1
}

package() {
  cd ${srcdir}/${_gitname}-build
  make DESTDIR=${pkgdir} install

}
