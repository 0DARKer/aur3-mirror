pkgname=encuentro
pkgver=0.1.1
pkgrel=1
pkgdesc="Busque, descargue, y vea el maravilloso contenido ofrecido por el Canal Encuentro. Search, download and see the wonderful content
ffered by Encuentro (Argenitine TV channel)"
url="http://launchpad.net/encuentro"
arch=('any')
depends=('python2' 'python2-zope-testbrowser' 'python-mechanize' 'twisted' 'pygtk' 'pyxdg')
makedepends=('python2-distribute' )
license=('GPL3')
source=('http://launchpad.net/encuentro/trunk/0.1.1/+download/encuentro-0.1.1.tar.gz')
md5sums=('0f9fa1507b05e419daa60069556598a8')

build() {
    cd $srcdir/encuentro-0.1.1
    python2 setup.py build
}

package() {
    cd $srcdir/encuentro-0.1.1
    python2 setup.py install --root="$pkgdir" --optimize=1
}

