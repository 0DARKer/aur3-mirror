#Maintainer: Abilng<abilngeorge@gmail.com>

pkgname="gnome-baxc"
pkgver=2.01
pkgrel=1
pkgdesc="A GUI to setting dynamic wallpaper for gnome (2/3)"
arch=(any)
license=('GPLv3')
source=(http://gnome-baxc.googlecode.com/git/packages/gnome-baxc.tar)
url="http://github.com/abilng/gnome-baxc"
depends=('python>=2' 'pyqt>=4')
install=gnome-baxc.install
md5sums=('e8273f8a4508869961ba4fed002ada6c')


package() {
	cd ${srcdir}/
	install --mode=755 -D ${srcdir}/src/baxc.py  ${pkgdir}/usr/share/gnome-baxc/baxc.py
	install --mode=755 -D ${srcdir}/src/gui.py  ${pkgdir}/usr/share/gnome-baxc/gui.py
	install --mode=755 -D ${srcdir}/src/imagepro.py  ${pkgdir}/usr/share/gnome-baxc/imagepro.py
	install --mode=755 -D ${srcdir}/src/xmlmsg.py  ${pkgdir}/usr/share/gnome-baxc/xmlmsg.py
	install --mode=755 -D gnome-baxc.svg ${pkgdir}/usr/share/icons/hicolor/scalable/apps/gnome-baxc.svg
	install -D ${srcdir}/src/Gnome-Baxc.desktop ${pkgdir}/usr/share/applications/Gnome-Baxc.desktop
	install --mode=755 -D ${srcdir}/gnome-baxc  ${pkgdir}/usr/bin/gnome-baxc
}
