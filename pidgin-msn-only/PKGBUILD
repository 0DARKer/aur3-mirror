# Contributor: Sebastian Benvenuti <sebastianbenvenuti@gmail.com>

pkgname=pidgin-msn-only
pkgver=2.6.3
pkgrel=1
pkgdesc="A light pidgin version: only msn protocol supported without tcl, tk, support."
arch=('i686' 'x86_64')
url="http://pidgin.im/"
license=('GPL')
depends=('startup-notification' 'nss' 'hicolor-icon-theme')
makedepends=('ca-certificates' 'perlxml' 'python' 'intltool')
replaces=('gaim')
provides=('pidgin')
conflicts=('pidgin')
options=('!libtool')
install=pidgin-msn-only.install
source=(http://sourceforge.net/projects/pidgin/files/Pidgin/pidgin-$pkgver.tar.bz2)
md5sums=('8d0ff6215b2d023eaa8efef59097ef83')
build() {

cd "$srcdir/pidgin-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --disable-schemas-install \
  --disable-meanwhile \
  --disable-nm \
  --disable-perl \
  --disable-gestures \
  --disable-consoleui \
  --disable-avahi \
  --disable-gnutls \
  --disable-doxygen \
  --disable-gtkspell --disable-vv\
  --disable-tcl --disable-tk \
  --disable-avahi \
  --disable-idn --disable-farsight\
  --with-system-ssl-certs=/etc/ssl/certs \
  --with-dynamic-prpls=msn  || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1

  rm -rf "$pkgdir/etc" || return 1
}

