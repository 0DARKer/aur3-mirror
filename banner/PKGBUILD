# Contributor: Peter Simons <simons@cryp.to>
pkgname=banner
pkgver=1.3.2
pkgrel=2
pkgdesc="print large banners to ASCII terminals"
arch=('i686' 'x86_64')
url='http://shh.thathost.com/pub-unix/'
license=('GPL')
groups=()
depends=('glibc')
makedepends=('shhmsg' 'shhopt')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=( http://shh.thathost.com/pub-unix/files/${pkgname}-${pkgver}.tar.gz )
noextract=()
md5sums=('9bd1dc58d3bced525a19194b92d20217')

build() {
  cd "$srcdir/$pkgname-$pkgver" || return 1
  make OPTIM="$CFLAGS" dep || return 1
  make OPTIM="$CFLAGS" || return 1
  make INSTBASEDIR="$pkgdir/usr" INSTMANDIR="$pkgdir/usr/share/man/man1" install || return 1
}
