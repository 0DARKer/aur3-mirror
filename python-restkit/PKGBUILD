# Contributor: Patrick Schneider <patrick.schneider@uni-ulm.de>
pkgname=python-restkit
pkgver=2.1.6
pkgrel=1
_commit=64785c9
pkgdesc="A HTTP resource kit for python"
arch=('i686' 'x86_64')
url="http://github.com/benoitc/restkit/"
license=('BSD')
depends=('python')
makedepends=('setuptools')
source=(http://github.com/benoitc/restkit/tarball/$pkgver)
md5sums=('cf299a36fb4bc0e90affd436b6950dc4')

build() { 
    cd "$srcdir"/benoitc-restkit-$_commit

    python setup.py build || return 1
}

package() {
    cd "$srcdir"/benoitc-restkit-$_commit

    python setup.py install --root=$pkgdir || return 1
}

