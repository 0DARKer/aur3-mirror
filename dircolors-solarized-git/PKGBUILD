# Maintainer: Isaac Aggrey <isaac.aggrey@gmail.com>
pkgname=dircolors-solarized-git
pkgver=20130213
pkgrel=2
pkgdesc="Solarized colors for dircolors"
arch=('any')
url="https://github.com/seebi/dircolors-solarized"
license=('unknown')
makedepends=('git')

_gitroot=git://github.com/seebi/dircolors-solarized.git
_gitname=dircolors-solarized

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"

  cd "$srcdir/$_gitname"

  install -Dm644 dircolors.256dark         $pkgdir/etc/dir_colors
# install -Dm644 dircolors.ansi-dark       $pkgdir/etc/dir_colors
# install -Dm644 dircolors.ansi-light      $pkgdir/etc/dir_colors
# install -Dm644 dircolors.ansi-universal  $pkgdir/etc/dir_colors

  eval `dircolors $pkgdir/etc/dir_colors`
}
