# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer:  <david@pako.st>
pkgname=scheme2js  
pkgver=20081219
pkgrel=1 
pkgdesc="A scheme to javascript compiler, as seen in Inria's Hop"
url="http://www-sop.inria.fr/mimosa/scheme2js"
arch=('i686')
license=('GPL')
depends=('bigloo>=3.0b')
makedepends=('bigloo>=3.0b')
source=("http://www-sop.inria.fr/mimosa/scheme2js/files/$pkgname-$pkgver.tar.gz")
md5sums=('efb16e806849ff0198a965b5d2d91b38')

build() {
  cd $startdir/src/$pkgname-$pkgver

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install
}
