# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
# Contributor: tomk
pkgname=dukto-svn
pkgver=103
pkgrel=1
pkgdesc="A simple, fast and multi-platform file transfer tool for LAN users"
arch=('x86_64')
url="http://www.msec.it/dukto/"
license=('GPL')
depends=('qt')
makedepends=('subversion')
source=()
md5sums=()

_svntrunk=http://dukto.googlecode.com/svn/trunk/
_svnmod=dukto-read-only

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"
  sed -i 's|C:/Users/Emanuele/Documents/DuktoSVN/trunk/src/||g' \
    src/3rd/qtsingleapplication/qtsingleapplication.pri

  #
  # BUILD
  #
  cd src
  qmake Dukto.pro.linux
  make
}

package() {
  cd "$srcdir/$_svnmod-build/"
  install -Dm755 src/Dukto $pkgdir/usr/bin/Dukto
}
