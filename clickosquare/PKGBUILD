# Contributor: Mario Blättermann <mariobl@gnome.org>
# Maintainer: Mario Blättermann <mariobl@gnome.org>

pkgname=clickosquare
pkgver=0.0.1
pkgrel=1
arch=('i686' 'x86_64')
depends=('gtk2')
conflicts=('clickosquare')
provides=('clickosquare')
pkgdesc="Clickomania! and friends are on your Linux Desktop now!A series of fun and mind-developing games written in pure C, Gtk+ 2.0 and some OpenGL."
url="http://clickomatic.sourceforge.net/"
license=('BSD')
source=(http://downloads.sourceforge.net/project/clickomatic/clickosquare-src/0.0.1/clickosquare-0.0.1.src.tar.bz2)
md5sums=('146037721ef7ad4cc5e9ad9a22a5bd99')

build() {
  cd $startdir/src/$pkgname-src
  make
  mkdir -p $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/usr/share/doc/clickosquare
  /bin/install -c clickosquare $startdir/pkg/usr/bin
  /bin/install -c README $startdir/pkg/usr/share/doc/clickosquare
}
