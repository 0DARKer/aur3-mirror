# Maintainer: Michael Pusterhofer <pusterhofer at student dot tugraz dot at>
pkgname=vim-r
pkgver=0.9.9.7
pkgrel=3
pkgdesc="This plugin improves Vim's support for editing R code"
arch=(any)
url="http://www.vim.org/scripts/script.php?script_id=2628"
license=('unknown')
depends=(vim tmux r-vimcom.plus)
source=('http://www.vim.org/scripts/download_script.php?src_id=20996')

package() {
    cd "$srcdir"
    _installpath="${pkgdir}/usr/share/vim/vimfiles"
    mkdir -p $_installpath
    unzip download_script.php?src_id=20996 -d $_installpath

    echo "################################################"
    echo "You should add library(vimcom.plus) to your ~/.Rprofile"
    echo "see :help r-plugin-installation for more details"
}

md5sums=('4485189412a413856cf0bc01d2b53dc4')
