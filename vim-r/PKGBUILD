# Maintainer: Michael Pusterhofer <pusterhofer at student dot tugraz dot at>
pkgname=vim-r
pkgver=0.9.9.3
pkgrel=1
pkgdesc="This plugin improves Vim's support for editing R code"
arch=(any)
url="http://www.vim.org/scripts/script.php?script_id=2628"
license=('unknown')
depends=(vim)
source=('http://www.vim.org/scripts/download_script.php?src_id=19802')

package() {
    cd "$srcdir"
    _installpath="${pkgdir}/usr/share/vim/vimfiles"
    mkdir -p $_installpath
    unzip download_script.php?src_id=19802 -d $_installpath
}

md5sums=('30d30c4b13576b7c8aeed9be3e113891')
