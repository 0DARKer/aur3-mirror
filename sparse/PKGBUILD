# Contributor: Dan McGee <dpmcgee@gmail.com>

pkgname=sparse
pkgver=0.4.4
pkgrel=1
pkgdesc="A Semantic Parser for C"
arch=('i686' 'x86_64')
url="http://sparse.wiki.kernel.org/"
license=('custom:OSL')
depends=('perl' 'libxml2')
source=(http://www.kernel.org/pub/software/devel/$pkgname/dist/$pkgname-$pkgver.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver

  make PREFIX=/usr || return 1
  make PREFIX=/usr DESTDIR=$startdir/pkg/$pkgname install

  # install license
  mkdir -p $startdir/pkg/$pkgname/usr/share/licenses/sparse
  install -m644 LICENSE $startdir/pkg/$pkgname/usr/share/licenses/sparse/
}

md5sums=('42812e837c858f83ca570d82bed867c3')
