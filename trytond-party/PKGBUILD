pkgname=trytond-party
_pkgname=trytond_party
pkgver=1.8.0
_pkgdir=1.8
pkgrel=1
pkgdesc="Party module of the Tryton application platform"
arch=('any')
url="http://www.tryton.org/"
license=('GPL3')
groups=('trytond-modules')
depends=('python' 'trytond>=1.8' 'trytond-country>=1.8')
optdepends=('python-vatnumber: support for validating VAT numbers')
makedepends=('python-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}

md5sums=('134c10a696659daf445a6924e538014c')
