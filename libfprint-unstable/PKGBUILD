pkgname=libfprint-unstable
pkgver=0.3.0
_srcpkgname=libfprint
_srcpkgver=0.3.0
pkgrel=1
pkgdesc="Library for fingerprint readers"
url="http://www.reactivated.net/fprint/Libfprint"
license=('LGPL')
groups=('fprint')
depends=('libusb' 'imagemagick>=6.4.8.10')
conflicts=('libfprint' 'libfprint-nightly')
provides=('libfprint')
arch=('i686' 'x86_64')
install=fprint.install
source=(http://cgit.freedesktop.org/libfprint/libfprint/snapshot/v_0_3_0.tar.bz2
50-fprint.rules)
md5sums=('9186771f4d0e65a99e36fba843b0a4c1'
         '61782233ddd830cd07451e39833555c8')
options=()

build() {
  cd $startdir/src/v_0_3_0
  ./autogen.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  install -D -m644 $startdir/src/50-fprint.rules $startdir/pkg/etc/udev/rules.d/70-fprint.rules
}
