# Maintainer: StephenB <mail4stb at gmail .com>

_pkgname=dmenu
pkgname=dmenu-xmms-patch
pkgver=4.1.1
pkgrel=1
pkgdesc="xmms like pattern matching for dmenu"
url="http://tools.suckless.org/dmenu/patches/xmms-like_pattern_matching"
arch=('i686' 'x86_64')
license=('MIT')
depends=('sh' 'libxinerama')
provides=("dmenu")
conflicts=("dmenu")
source=("dmenu-xmms.patch"
        "http://dl.suckless.org/tools/$_pkgname-$pkgver.tar.gz")
md5sums=('2922ac6be3cc568f294d83415515c730'
         '931896a199741c23be945e8519a81c1d')

build(){
  cd $srcdir/$_pkgname-$pkgver

  patch -p2 -i $startdir/dmenu-xmms.patch

  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  make PREFIX=/usr DESTDIR=$pkgdir install

  #install license
  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$_pkgname/LICENSE
}
