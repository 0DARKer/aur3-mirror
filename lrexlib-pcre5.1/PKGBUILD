pkgname=lrexlib-pcre5.1
pkgver=2.7.2
pkgrel=1
pkgdesc="PCRE Library for Lua 5.1"
arch=('i686' 'x86_64')
url="http://rrthomas.github.com/lrexlib/"
license=('MIT')
depends=('lua51')
makedepends=('luarocks5.1')

package() {
  mkdir "$pkgdir/usr"
  luarocks-5.1 --tree="$pkgdir/usr" install lrexlib-pcre
}

