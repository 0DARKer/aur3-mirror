# Maintainer: Hyacinthe Cartiaux <hyacinthe.cartiaux@free.fr>

pkgname=shaperprobe
pkgver=0.1
pkgrel=1
pkgdesc="Detecting ISP Traffic Rate-Limiting"
arch=('i686' 'x86_64')
url="http://www.cc.gatech.edu/~partha/diffprobe/shaperprobe.html"
license=('GPL')
depends=()
source=(http://www.cc.gatech.edu/~partha/diffprobe/${pkgname}.tgz)
md5sums=('a15b31cce3ffe087c5242d1fc9006c13')

build() {
  cd ${srcdir}/${pkgname}
  make
}

package() {
  cd ${srcdir}/${pkgname}
  mkdir -p ${pkgdir}/usr/bin
  install -m 755 prober ${pkgdir}/usr/bin/
}
