# Maintainer: /dev/rs0 <rs0@secretco.de.com>

pkgname=springseed
pkgver=2.0
pkgrel=3
pkgdesc="Simply awesome note taking."

arch=('i686' 'x86_64')
license=('MIT')
url="http://getspringseed.com/"

[[ $CARCH == 'x86_64' ]] && _arch='amd64' || _arch='i386'
[[ $CARCH == 'x86_64' ]] && md5sums=('f6843eac6dc580e86aa4766971e60f5a') || md5sums=('fddb91d2e61fa4524febfde594b57f35')
_source="${pkgname}_${pkgver}_${_arch}.deb"

depends=('gconf' 'alsa-lib' 'nss' 'udisks')
source=("http://cdn.michealharker.com/dl/${_source}")
makedepends=('unzip')

package() {
    mkdir -p ${pkgdir}/usr/bin
    ar xv ${_source} > /dev/null 2>&1
    tar zxvf data.tar.gz -C ${pkgdir} > /dev/null 2>&1
    cd ${pkgdir}/usr/share/${pkgname}
    unzip Springseed.zip > /dev/null 2>&1 && rm Springseed.zip
    install -Dm0644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE && rm LICENSE
    chmod 0755 ${pkgdir}/usr/{,{,share/applications}}
    chmod 0755 ${pkgdir}/usr/share/{,icons/hicolor/scalable/apps}
    chmod 0644 ${pkgdir}/usr/share/icons/hicolor/scalable/apps/${pkgname}.svg
}
