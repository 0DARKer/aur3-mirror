# Maintainer: Ryon Sherman <ryon.sherman@gmail.com>

pkgname=springseed
pkgver=1.0.1
pkgrel=1
pkgdesc="Simply awesome note taking."

arch=('i686' 'x86_64')
license=('custom')
url="http://getspringseed.com/"

[[ $CARCH == 'x86_64' ]] && _arch='amd64' || _arch='i386'
[[ $CARCH == 'x86_64' ]] && md5sums=('c3a2f392eda7fd625f1a9ce0c3d2652a') || md5sums=('1e7eb21666251a350da12f5d05b2d3ba')
_source="${pkgname}_${pkgver}~fix1_${_arch}.deb"

source=("http://${pkgname}.s3.amazonaws.com/dl/${_source}")

package() {
    ar xv $_source
    tar zxvf data.tar.gz -C $pkgdir

    mkdir ${pkgdir}/usr/lib
    ln -s /usr/lib/libudev.so ${pkgdir}/usr/lib/libudev.so.0
}
