# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=omegat
pkgver=2.0.5_04
pkgrel=1
pkgdesc="Multiplatform CAT tool application, written in Java"
arch=('i686' 'x86_64')
url="http://www.omegat.org/en/omegat.html"
license=('GPL')
depends=('java-runtime' 'desktop-file-utils')
conflicts=('omegat-beta')
install=$pkgname.install
source=(http://downloads.sourceforge.net/$pkgname/OmegaT_${pkgver}_Without_JRE.zip \
        http://www.omegat.org/resources/icons.zip \
        $pkgname.desktop)
md5sums=('9808263bc3e71591dcad8df9d2e66ee8'
         'ddfa9961b57a3ac067951a681af6d2c9'
         '613d2703453b0557519f9c055d5d8b37')

build() {
  cd ${srcdir}
  install -d ${pkgdir}/usr/share/java/$pkgname \
             ${pkgdir}/usr/bin || return 1

  find . -type f -exec chmod 644 "{}" \; || return 1
  mv *.txt ${srcdir}/docs || return 1
  cp -r * ${pkgdir}/usr/share/java/$pkgname || return 1
  chmod 755 ${pkgdir}/usr/share/java/$pkgname/OmegaT || return 1

#.desktop file + icon
  install -D -m644 ${srcdir}/$pkgname.desktop \
    ${pkgdir}/usr/share/applications/$pkgname.desktop || return 1
  install -D -m644 ${srcdir}/icons/OmegaT_Icon.png \
    ${pkgdir}/usr/share/pixmaps/$pkgname.png || return 1

#more images
  install -m644 ${pkgdir}/usr/share/java/$pkgname/icons/*.png \
    ${pkgdir}/usr/share/java/$pkgname/images/ || return 1

#removing obsolete files
  rm -rf ${pkgdir}/usr/share/java/$pkgname/{*.{zip,desktop},OmegaT,OmegaT.bat,icons} || return 1

#making executable file
  echo "#!/bin/sh" > ${pkgdir}/usr/bin/$pkgname || return 1
  echo "cd /usr/share/java/$pkgname/" >> ${pkgdir}/usr/bin/$pkgname || return 1
  echo "java -jar OmegaT.jar \$*" >> ${pkgdir}/usr/bin/$pkgname || return 1
  chmod 755 ${pkgdir}/usr/bin/$pkgname || return 1
}

