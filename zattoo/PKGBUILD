pkgname=zattoo
pkgver=4.0.5
pkgrel=1
pkgdesc="Watch television over your broadband Internet connection  (account required, registration on http://zattoo.com)"
arch=('i686')
url="http://zattoo.com/"
license=('custom')
makedepends=('deb2targz')
depends=('flashplugin' 'qt')
provides=('zattoo')
conflicts=('zattoo-ch' 'zattoo' 'zattoo4' 'zattoo-beta')
install=zattoo.install
source=(http://download.zattoo.com/${pkgname}-${pkgver}-i386.deb \
        License.txt)

md5sums=('5fc6e9bebebf7b990ce0b37ea73fca60'
         'bfd7fe899abba912128021bb42803e20')

build() {
	
	cd ${srcdir}
	# DEB ressources
	deb2targz ${pkgname}-${pkgver}-i386.deb
	# TAR ressources
	tar xzf ${pkgname}-${pkgver}-i386.tar.gz

	# License
	mkdir -p ${srcdir}/usr/share/licenses/${pkgname}
	install -m644 ${srcdir}/License.txt ${srcdir}/usr/share/licenses/${pkgname}/LICENSE

	# Symbolic
	cd ${srcdir}/usr/bin
	ln -s Zattoo zattoo

        # Zattoo Program
        cp -R ${srcdir}/usr ${pkgdir}/
	
}


