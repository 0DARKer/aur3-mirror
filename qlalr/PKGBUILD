# Contributor: Aleix Pol <aleixpol@kde.org>

pkgname=qlalr
pkgver=20100109
pkgrel=1
pkgdesc="Qt LALR parser generator"
arch=('any')
url="http://labs.trolltech.com/page/Projects/Compilers/QLALR"
license=('GPL')
depends=('qt>=4.2.0')
makedepends=('svn')
provides=('qlalr')
conflicts=()
source=()
md5sums=()

_svnroot="svn://labs.trolltech.com/svn/compilers/qlalr"
_svnname="qlalr"

build() {
  cd "$srcdir"
  if [ -d ${_svnname} ]; then
    svn revert ${_svnname}
  fi
  svn co ${_svnroot}
  cd ${_svnname}/src
  
  qmake || return 1
  make || return 1
  
  mkdir -p $pkgdir/usr/bin
  install qlalr -t $pkgdir/usr/bin
} 