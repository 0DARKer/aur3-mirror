# Maintainer: Marc Rozanc <marc@rozanc.fr>

pkgname=flaremonitor
_rel=1.0
_subrel=2
pkgver=${_rel}.${_subrel}
pkgrel=1
pkgdesc="flaremonitor is an advanced browser integration helper module of flareGet"
arch=('i686' 'x86_64')
url="http://flareget.com"
license=('custom')
depends=('flareget-pro>=1.4.7' 'libnetfilter_queue>=0.0.17-1')
makedepends=('rpmextract')
install=${pkgname}.install

if [ "${CARCH}" = "x86_64" ]; then 
    source=("${pkgname}-${_rel}-${_subrel}.x86_64.rpm")
    md5sums=('37f3d461b8b027d3d4db7b6e86588e15')
elif  [ "${CARCH}" = 'i686' ]; then
    source=("${pkgname}-${_rel}-${_subrel}.i386.rpm")
    md5sums=('ebb3a7f882d5910cd9b484f1a7ffe39b')
fi

package() {
   cd $pkgdir

   # Extract .rpm package
   rpmextract.sh $srcdir/${source[0]}

   cd $srcdir
   # License
   install -Dm644 $pkgdir/usr/share/doc/$pkgname/COPYING $pkgdir/usr/share/licenses/$pkgname/LICENSE
   
   rm $pkgdir/usr/share/doc/$pkgname/COPYING
}

