_npmname=buster
pkgname=nodejs-buster # All lowercase
pkgver=0.7.14
pkgrel=1
pkgdesc="Buster.JS JavaScript Test framework. Meta package that pieces together various sub-projects. "
arch=(any)
url="http://busterjs.org/"
license=()
depends=('nodejs' 'python2' )
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=('0efd7aa71ffbed1dde0fee5ab7c749b56c4ab5a3')
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  chmod 700 -R $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" --python=/usr/bin/python2 $_npmname@$pkgver
}

