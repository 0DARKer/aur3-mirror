# Contributor: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=xiphos-svn
pkgver=4356
pkgrel=1
pkgdesc="a Bible study tool for gnome -- svn version"
arch=('i686' 'x86_64')
url="http://xiphos.org"
license=('GPL')
depends=('gtkhtml' 'libgsf' 'libglade' 'sword' 'nspr')
makedepends=('gnome-common' 'gnome-doc-utils' 'intltool' 'subversion')
provides=('gnomesword' 'xiphos')
conflicts=('gnomesword' 'xiphos')
replaces=('gnomesword')
source=()
md5sums=()

_svntrunk=https://gnomesword.svn.sourceforge.net/svnroot/gnomesword/trunk
_svnmod=gnomesword

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD
  #
  sed -i 's+/usr/bin/env python+/usr/bin/env python2+' waf
  ./waf --prefix=/usr --enable-gtkhtml configure 
  ./waf --prefix=/usr build 
  ./waf --destdir=$pkgdir --no-post-install install 
}
