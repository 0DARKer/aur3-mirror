# Contributor: Sigitas Mazaliauskas <sigisnn at gmail dot com>

pkgname=pidgin-twitter
pkgver=0.9.2
pkgrel=1
pkgdesc="Pidgin plugin for Twitter support"
arch=('i686' 'x86_64')
url="http://honeyplanet.jp/pidgin-twitter"
license=('GPL')
depends=('pidgin')
source=("http://www.honeyplanet.jp/${pkgname}-${pkgver}.tar.gz")
md5sums=('f6eef7d8326e2a31436d057b7ae1bd95')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr || return 1
  make || return 1

  install -d -m 755 ${pkgdir}/usr/lib/pidgin || return 1
  install -m 755 ${pkgname}.so ${pkgdir}/usr/lib/pidgin || return 1
  install -d -m 755 ${pkgdir}/usr/share/${pkgname} || return 1
  install -m 644 prefs.ui ${pkgdir}/usr/share/${pkgname} || return 1
}