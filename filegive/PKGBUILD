pkgname=filegive
pkgver=0.6
pkgrel=1
pkgdesc="Easy sending of files, point-to-point"
url="http://vicerveza.homeunix.net/~viric/cgi-bin/filegive"
arch=('x86_64' 'i686')
license=('AGPLv3')
depends=('go')
source=("http://vicerveza.homeunix.net/~viric/cgi-bin/filegive/tarball/filegive-${pkgver}.tar.gz")
md5sums=('dec2ecf934d703c10524abf11d5ce4cb')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p go
  export GOPATH="${srcdir}/${pkgname}-${pkgver}/go"
  go get code.google.com/p/go-nat-pmp
  go build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 filegive-${pkgver} "$pkgdir/usr/bin/filegive"
}

