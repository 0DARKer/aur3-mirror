pkgname=filegive
pkgver=0.7.1
uuid=0.7
pkgrel=1
pkgdesc="Easy sending of files, point-to-point"
url="http://vicerveza.homeunix.net/~viric/cgi-bin/filegive"
arch=('x86_64' 'i686')
license=('AGPLv3')
depends=('go')
source=("http://vicerveza.homeunix.net/~viric/cgi-bin/filegive/tarball/filegive-${pkgver}.tar.gz?uuid=v${uuid}")
md5sums=('f2057104947fb1b6f6d0acc31dff6452')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p go
  export GOPATH="${srcdir}/${pkgname}-${pkgver}/go"
  go get code.google.com/p/go-nat-pmp
  go build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 filegive-${pkgver} "$pkgdir/usr/bin/filegive"
}

