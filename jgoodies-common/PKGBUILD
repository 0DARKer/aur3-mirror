# Maintainer: Walter Dworak <preparationh67 at gmail dot com>
# see http://wiki.archlinux.org/index.php/Java_Package_Guidelines
pkgname=jgoodies-common
pkgver=1.3.0
pkgrel=1
pkgdesc="A Java Swing library that provides for other jgoodies libraries"
arch=('any')
url="http://www.jgoodies.com/"
license=('BSD')
groups=('jgoodies')
depends=('java-runtime')
source=('http://www.jgoodies.com/download/libraries/common/jgoodies-common-1_3_0.zip')

md5sums=('538e04b89e855a47103ed510210de27b')

build() {
  _src="$srcdir/jgoodies-common-$pkgver"
  _pkg="$pkgdir/usr/share/java"
  install -m 644 -D "$_src/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  mkdir -p "$_pkg"
  mv "$_src" "$_pkg/$pkgname"
}

