# Contributor: Johannes Pfau <johannespfau at gmail dot com>
pkgname=notify-osd
pkgver=0.9.29
pkgrel=2
pkgdesc="daemon that displays passive pop-up notifications"
arch=(i686 x86_64)
url="https://launchpad.net/notify-osd"
license=('GPL')
groups=()
depends=('libwnck' 'gconf')
makedepends=('pkgconfig' 'libnotify')
provides=('notification-daemon')
conflicts=('notification-daemon')
install=
source=("http://launchpad.net/notify-osd/lucid/ubuntu-10.04-beta-2/+download/${pkgname}-${pkgver}.tar.gz" "fix_dropshadow.diff")
md5sums=('13df20eb3c6d06c17eef07400e1650d8'
         '17d44d698322d66c86e3df95b9f0fcec')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 -i $srcdir/fix_dropshadow.diff
  ./configure --prefix=/usr --libexecdir=/usr/lib/$pkgname --disable-gtktest
  make || return 1
  make DESTDIR="$pkgdir/" install
}

