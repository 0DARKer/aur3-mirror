pkgname=android-udev
pkgver=0.9
pkgrel=1
pkgdesc='Udev rules to connect Android devices to your linux box'
arch=('any')
url="http://developer.android.com/guide/developing/device.html"
license=('unknown')
source=('51-android.rules')
depends=('udev' 'libmtp')
conflicts=('udev-android-rules')
install='android-udev.install'

package() {
  mkdir -p $pkgdir/lib/udev/rules.d/
  cp $srcdir/51-android.rules $pkgdir/lib/udev/rules.d/51-android.rules
  chmod a+r $pkgdir/lib/udev/rules.d/51-android.rules
}

md5sums=('491de72d61d23d0e08bda5de6d0fad64')
