# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

pkgname=openbox-theme-simplix
pkgver=r33.f4849dc
pkgrel=1
pkgdesc="A very bright, simple but daily usable theme for Openbox."
arch=(
	"$CARCH"
)
url="http://sixsixfive.deviantart.com/art/simpliX-346404452"
license=(
	"custom"
	"CCPL:cc-by-4.0"
)

depends=(
	"openbox"
)
optdepends=(
	"slim-theme-simplix: SLiM theme"
	"kdm-theme-simplix: KDM theme"
	"helvetica-font: Helvetica bitmap font"
)
makedepends=(
	"git"
)
provides=(
	"${pkgname}=${pkgver}"
)
conflicts=(
	"${pkgname}"
)
replaces=(
	"${pkgname}"
)

source=(
	"${pkgname}::git+https://github.com/sixsixfive/themes.git"
)
md5sums=(
	"SKIP"
)
sha512sums=(
	"SKIP"
)

pkgver() {
	cd ${srcdir}/${pkgname}
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

_themename=simpliX

package() {
	# Create base directories
	install -dm755 ${pkgdir}/usr/share/themes
	install -dm755 ${pkgdir}/usr/share/backgrounds/openbox
	install -dm755 ${pkgdir}/usr/share/licenses
	
	# Change the current working directory
	cd ${srcdir}/${pkgname}/${_themename}
	
	# Openbox theme
	install -dm755 ${pkgdir}/usr/share/themes/${_themename}
	cp -R ./openbox-3 ${pkgdir}/usr/share/themes/${_themename}
	
	# Wallpaper (pattern)
	cp ./Extras/Wallpapers/Patterns/wallpaper1.png ${pkgdir}/usr/share/backgrounds/openbox/${_themename}.png
	
	# License
	install -dm755 ${pkgdir}/usr/share/licenses/${pkgname}
	cp ./COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}