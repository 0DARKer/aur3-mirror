pkgname=wmweather+
pkgver=2.13
pkgrel=1
pkgdesc="Downloads the National Weather Serivce METAR bulletins, ANV and MRF forecasts, and any weather map for display in a WindowMaker dockapp"
arch=('i686' 'x86_64')
url="http://www.dockapps.org/file.php/id/112"
license=('GPL')
groups=(x11)
depends=('windowmaker' 'pcre' 'libxpm' 'curl')
source=(http://www.dockapps.org/download.php/id/846/$pkgname-$pkgver.tar.gz)
md5sums=('4ee42014f0e07d5d5baafe7c2db3a1fe')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir/" install
}

