_pkgname=gedit
pkgname=$_pkgname-git
pkgver=3.8.1.101.gc09fe4e
pkgrel=1
pkgdesc="A text editor for GNOME"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk3>=3.9.0' 'gtksourceview3' 'gsettings-desktop-schemas' 'libpeas' 'enchant' 'iso-codes' 'libsm' 'desktop-file-utils' 'python-gobject' 'dconf')
makedepends=('yelp-tools' 'intltool' 'libzeitgeist' 'gtk-doc')
optdepends=('libzeitgeist: Zeitgeist plugin')
groups=('gnome-extra')
options=('!libtool' '!emptydirs')
url="http://www.gnome.org"
source=('git://git.gnome.org/gedit')
sha256sums=('SKIP')
replaces=('gedit')
provides=('gedit' 'gedit=3.8.1')
conflicts=('gedit')
install=gedit.install

_gitroot="http://git.gnome.org/browse/gedit"
_gitname="gedit"

pkgver() {
  cd $_name
  git describe | sed 's/^v//;s/-/./g;s/_/./g;'
}

build() {
  cd "$srcdir/$_pkgname"
    
  #~ git checkout -b wip/redesign origin/wip/redesign
  
  ./autogen.sh --prefix=/usr \
      --sysconfdir=/etc --localstatedir=/var \
      --libexecdir=/usr/lib --disable-updater --disable-schemas-compile \
      --enable-python --enable-gtk-doc
  make
}

package(){
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
