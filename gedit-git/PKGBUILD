_pkgname=gedit
pkgname=$_pkgname-git
pkgver=3.11.2.34.g277bba7
pkgrel=1
pkgdesc="A text editor for GNOME"
arch=('i686' 'x86_64')
license=('GPL')
depends=("glib2>=2.39.3" "gtk3>=3.9.9" "gtksourceview3>=3.11.2" 'gsettings-desktop-schemas'
         'libpeas' 'enchant' 'iso-codes' 'libsm' 'desktop-file-utils' 'python-gobject' 'dconf')
makedepends=('yelp-tools' 'intltool' 'libzeitgeist' 'gtk-doc')
optdepends=('libzeitgeist: Zeitgeist plugin')
groups=('gnome-extra')
options=('!libtool' '!emptydirs')
url="http://www.gnome.org"
source=('git://git.gnome.org/gedit')
sha256sums=('SKIP')
install=$_pkgname.install
replaces=('gedit')
provides=('gedit=3.11.2')
conflicts=('gedit')
source=('git://git.gnome.org/gedit')
sha256sums=('SKIP ')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/$_pkgname"
  git clone git://git.gnome.org/libgd
  ./autogen.sh --prefix=/usr \
    --sysconfdir=/etc --localstatedir=/var \
    --libexecdir=/usr/lib --disable-updater --disable-schemas-compile \
	  --disable-maintainer-mode --disable-deprecations \
	  --enable-python --enable-gtk-doc
  make
}

package(){
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
