# Wallchange
# Maintainer: ying <Jinoto Systems>
# Contributor: ying <Jinoto Systems>
pkgname=battery-notification
url="http://there_is_no_url_;)"
pkgver=1.0
pkgrel=1
pkgdesc="A small and simple zenity tool which is showing the battery status."
arch=('i686' 'x86_64')
license=('GPL2')
depends=('zenity' 'hal') 
source=(battery-notification battery-notification.conf icons.tar.bz2)


package() {
	mkdir -p $pkgdir/usr/share/${pkgname}
	mkdir -p $pkgdir/etc
	install -Dm755 ${pkgname} $pkgdir/usr/bin/${pkgname} || return
	install -Dm755 ${pkgname}.conf $pkgdir/etc/${pkgname}.conf || return
	cp -fr icons $pkgdir/usr/share/${pkgname}/icons || return 
}





md5sums=('898fc749a311c0d5e5049f0731b2ce6b'
         'b2129918ea891ac431aae6540e9357b5'
         'dbfdcff11adfd53c5d8ff0a9d33dc6b1')
