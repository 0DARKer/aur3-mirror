# Contributor: Alexander Baldeck <alexander@archlinux.org>

pkgname=yate-svn
pkgver=5343
pkgrel=1
pkgdesc="next-generation telephony engine"
arch=('i686' 'x86_64' 'ppc')
url="http://yate.null.ro"
license=('GPL')
depends=('speex' 'gsm' 'gtk2' 'postgresql-libs' 'libmysqlclient' 'alsa-lib' 'qt')
makedepends=('doxygen' 'pkgconfig' 'subversion' 'sox')
source=(yate.init)
md5sums=('c0d344607046c47c1d75ac23d323817a')

_svntrunk=http://yate.null.ro/svn/yate/trunk
_svnmod=yate

build() {
  cd $srcdir

  export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

  if [ -d $_svnmod/.svn ]; then
  	(cd $_svnmod && svn up -r $pkgver)
  else
   	svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build
  
  ./autogen.sh
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --with-doxygen \
              --with-libpq \
              --with-mysql \
	      --without-openh323 \
	      --with-libqt4
  make
}

package() {
  cd $srcdir/$_svnmod-build
  make DESTDIR=$pkgdir install
  install -D -m755 $srcdir/yate.init $pkgdir/etc/rc.d/yate
}
