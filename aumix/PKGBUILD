# Maintainer Erus <erus.iluvatar@gmail.com>

pkgname=aumix
pkgver=2.9.1
pkgrel=1
pkgdesc="A color text mode sound mixer with GPM support"
arch=('i686' 'x86_64')
license=('GPL')
depends=('glibc' 'ncurses' 'gpm')
conflicts=('aumix-gtk')
url=(http://www.jpj.net/~trevor/aumix.html)
source=(http://jpj.net/~trevor/aumix/releases/aumix-$pkgver.tar.bz2)
md5sums=('34f28ae1c94fc5298e8bb2688c4b3a20')

build() {
  cd $srcdir/aumix-$pkgver

  msg "No X11 build"
  ./configure --prefix=/usr --mandir=/usr/share/man --without-gtk
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
