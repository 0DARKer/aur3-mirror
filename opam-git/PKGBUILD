# Maintainer: Zhehao Mao <zhehao.mao@gmail.com>
# Contributor: RaphaÃ«l Proust <raphlalou@gmail.com>
pkgname=opam-git
pkgver=20130304
pkgrel=1
pkgdesc="OCaml Package Manager"
arch=(i686 x86_64)
url="https://github.com/OCamlPro/opam"
license=('GPL')
depends=('ocaml')
makedepends=('git' 'wget')
provides=('opam')
conflicts=('opam')
install='opam-git.install'
source=('opam-git.install')
md5sums=('e26e35d3f858c0b5474b778821f9d2e8')
_gitroot='https://github.com/OCamlPro/opam.git'
_gitname='opam'

pkgver () {
  cd "$srcdir/$_gitname"
  echo $(git describe --always | sed 's/-/./g')
}

build() {
  cd "$srcdir"

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
  else
    git clone "$_gitroot" "$_gitname"
  fi

  cd "$srcdir"
  rm -rf build
  cp -a "$_gitname" build
  cd "$srcdir/build"
  ./configure --prefix="$pkgdir/usr"
  make
}

package() {
  cd "$srcdir/build"
  make install
}
