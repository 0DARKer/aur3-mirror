# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>
pkgname=ttf-sansation
_realname=Sansation
pkgver=1
pkgrel=1.1
pkgdesc="Sansation True Type font"
arch=('any')
license=('custom:free')
url="http://www.fontsquirrel.com/fonts/Sansation"
_url="http://www.fontsquirrel.com/fonts/download/Sansation"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=ttf.install
options=(force)
source=("$_url/$_realname.zip")

md5sums=('3b7a882bf7703b0be18e6dd2af4c7a7d')

build() {
  cd $srcdir
  install -d $pkgdir/usr/share/fonts/TTF/
  install -m644 *.ttf $startdir/pkg/usr/share/fonts/TTF/ || return 1
  install -Dm644 Bernd* $pkgdir/usr/share/licenses/$pkgname/LICENSE

}

