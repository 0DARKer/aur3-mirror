# Maintainer: Giorgio Gilestro <giorgio@gilest.ro>

pkgname=minus-uploader
pkgver=1.7
pkgrel=1
pkgdesc="The Minus desktop app allows you to drag-n-drop photos and files into the taskbar and instantly upload onto Minus"
url="http://min.us/pages/tools"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=('deb2targz' 'tar')

source=('http://blog.minus.com/updates/minus-desktop-tool_i386.deb' 'http://blog.minus.com/updates/minus-desktop-tool_amd64.deb')
md5sums=('007f04d6d9d106cbecf5e5e96dca3118' '9aee0eb6f8689356bb7285f9e37714a6')
depends=('lib32-qt' 'qt' 'qjson')


if   [ "$CARCH" == 'x86_64' ]; then
	unset source[0]
	unset md5sums[0]
	filename=source[1]

elif [ "$CARCH" == 'i686' ]; then
	unset depends[0]
	unset source[1]
	unset md5sums[1]
	filename=source[0]

fi


build() {
    
	deb2targz $filename > /dev/null
	cd $pkgdir
	tar -xzf $srcdir/data.tar.gz 
}
