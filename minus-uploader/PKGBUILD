# Contributor: Giorgio Gilestro <giorgio@gilest.ro>

pkgname=minus-uploader
pkgver=1.1
pkgrel=2
pkgdesc="The Minus desktop app allows you to drag-n-drop photos and files into the taskbar and instantly upload onto Minus"
url="http://min.us/pages/tools"
license=('GPL')
arch=('i686' 'x86_64')
depends=('qt')
source=("http://blog.min.us/dl/minusubuntu.tar.gz" "minus-uploader.svg" 
"minus-uploader.desktop")
md5sums=('0f1de0f7c3d6dbc419f92973a05e3df1' '9df5142d0ea0e991a96ed316867b35df' 
'a5471cc3fc68582391a266502cd5eeeb')

build() {
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/share/minus-uploader
	mkdir -p $pkgdir/usr/share/applications
	install minus $pkgdir/usr/bin/
	install minus-uploader.svg $pkgdir/usr/share/minus-uploader/minus-uploader.svg
	install minus-uploader.desktop $pkgdir/usr/share/applications/
}



