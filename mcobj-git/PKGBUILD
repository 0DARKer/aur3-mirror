# Maintainer: Andrew Black <agwblack at gmail dot com>
pkgname=mcobj-git
pkgver=20110613
pkgrel=1
pkgdesc="exports minecraft worlds to .obj or .prt -- git pull"
arch=(i686 x86_64)
url="https://github.com/quag/mcobj"
license=('BSD')
depends=()
makedepends=(go make)
optdepends=(minecraft)
conflicts=(mcobj)
options=(!strip)
source=(mcobj.1)
md5sums=('6dda728366d8fc4637541dedcdee96db')


_gitroot="git://github.com/quag/mcobj.git"
_gitname="mcobj"

build() {

	cd "$srcdir"	
	git clone "$_gitroot"
	cd "$_gitname"
	export GOROOT=/usr/lib/go
	chmod +x build.sh
	./build.sh

}

package() {

	mkdir -p "$pkgdir/usr/share/mcobj"	
	mkdir -p "$pkgdir/usr/bin"

	cd "$srcdir/$_gitname"

	install -Dm0755 mcobj "$pkgdir/usr/share/mcobj/" 
	install -Dm0644 blocks.json "$pkgdir/usr/share/mcobj/"

	cd ../../
	install -Dm0755 mcobj.1 "$pkgdir/usr/bin/mcobj"

}
