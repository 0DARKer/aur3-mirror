# Maintainer: Samuel Mesa <samuelmesa@linuxmail.org>

pkgname='libmini-svn'
_pkgname=libmini
pkgver=0
pkgrel=1
pkgdesc="Real-Time Terrain Rendering. Display high-resolution geospatial terrain data at real-time."
arch=('i686' 'x86_64')
url='https://code.google.com/p/libmini/'
license=('GPL')
provides=("$pkgname")

depends=('libsquish-svn' 'openscenegraph' 'glu')
makedepends=('cmake' 'subversion')
optdepends=()
source=("${pkgname}::svn+http://libmini.googlecode.com/svn/libmini/mini")
md5sums=('SKIP')

pkgver() {
  svnversion "${SRCDEST}/${pkgname}" | tr -d [A-z]
}

build() {
  cd "${pkgname}"

  if [ -d "build" ]; then
    rm -rf build
  fi
  
  mkdir build
  cd build

  msg "Starting make..."

  cmake .. -DCMAKE_INSTALL_PREFIX=/usr/ \
  -DBUILD_MINI_WITH_OPENTHREADS=ON \
  -DBUILD_MINI_SFX=ON \
  -DBUILD_MINI_EXAMPLE=ON

  make
}

package() {
  cd "${pkgname}"
  cd build 

  make DESTDIR="$pkgdir" install

  install -D -m644 "${srcdir}/${pkgname}/libMini-app.cmake" "${pkgdir}/usr/include/mini/"  
}