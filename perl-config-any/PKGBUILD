# Generator  : CPANPLUS::Dist::Arch 0.17
pkgname='perl-config-any'
pkgver='0.19'
pkgrel='1'
pkgdesc="Support several config file formats"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Config-Any'
source=('http://search.cpan.org/CPAN/authors/id/B/BR/BRICAS/Config-Any-0.19.tar.gz')
md5sums=('84e2da067d07da59a6482697d2c25b2c')

build() {
  DIST_DIR="${srcdir}/Config-Any-0.19"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
