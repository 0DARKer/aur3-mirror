# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-nxengine-git
_gitname=nxengine-libretro
pkgver=2013.06.07_2c23062
pkgrel=1
pkgdesc="libretro implementation of nxengine. (Cave Story)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/nxengine-libretro"
license=('custom')
makedepends=('git')
install=libretro-nxengine.install
source=('git://github.com/libretro/nxengine-libretro.git')
md5sums=('SKIP')


pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   mkdir -p $pkgdir/usr/lib/libretro/extras
   mkdir -p $pkgdir/usr/lib/libretro/extras/libretro-nx
   install -m755 $srcdir/$_gitname/nxengine_libretro.so $pkgdir/usr/lib/libretro/libretro-nx.so
   cp -r $srcdir/$_gitname/datafiles $pkgdir/usr/lib/libretro/extras/libretro-nx
}

