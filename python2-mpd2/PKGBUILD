# Maintainer: Rupert Bedford <rupertpkb@gmail.com>
pkgname=python2-mpd2
pkgver=20121211
pkgrel=1
pkgdesc="An MPD (Music Player Daemon) client library written in pure Python."
arch=('i686', 'x86_64')
url="https://github.com/Mic92/python-mpd2"
license=('GPL')
groups=()
depends=('python2')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=()
md5sums=()
_gitroot='git://github.com/Mic92/python-mpd2.git'
_gitname='python-mpd2'

package() {
  cd ${srcdir}

  if [ -d "${srcdir}/${_gitname}" ] ; then
    cd ${_gitname} && git pull --rebase
  else
    git clone ${_gitroot}
    cd ${_gitname}
  fi 

  python2 setup.py install --root="$pkgdir/" --optimize=1
}
