# Maintainer: Sven Schneider <archlinux.sandmann@googlemail.com>

pkgname=stuntrally-tracks
pkgver=1.1.1
pkgrel=1
pkgdesc="Stunt Rally game with track editor, based on VDrift and OGRE (tracks)"
arch=('any')
license=('GPL3')
url="http://code.google.com/p/vdrift-ogre"
depends=()
makedepends=('p7zip')
source=(http://vdrift-ogre.googlecode.com/files/StuntRally_v1.0_tracks.7z
		http://vdrift-ogre.googlecode.com/files/StuntRally_v1.1_tracks2.7z)
md5sums=('02d1f2763f7dd5686331bba98b3eeba4'
		 '6c3e049a54d43c1f3e4dc40edaf6afbc')

build() {
	cd "${srcdir}"
	
	7z x -y -o"." "StuntRally_v1.0_tracks.7z"
	7z x -y -o"." "StuntRally_v1.1_tracks2.7z"
}

package() {
	cd "${srcdir}/StuntRally"

	mkdir -p "${pkgdir}/usr/share/stuntrally/"
	mv data "${pkgdir}/usr/share/stuntrally/data"
	
	find "${pkgdir}/usr/share/stuntrally/data" -type f -exec chmod 644 {} \;
	find "${pkgdir}/usr/share/stuntrally/data" -type d -exec chmod 755 {} \;
}
