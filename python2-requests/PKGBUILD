pkgname=python2-requests
pkgver=0.10.4
pkgrel=1
pkgdesc="Python HTTP for Humans."
url="http://python-requests.org"
depends=('python2' )
makedepends=('python2-distribute' )
optdepends=('python2-certifi: SSL support'
            'python2-gevent: async support')
license=('custom: ISC')
arch=('any')
source=("http://pypi.python.org/packages/source/r/requests/requests-$pkgver.tar.gz")

build() {
    cd $srcdir/requests-$pkgver
    python2 setup.py build
}

package() {
    cd $srcdir/requests-$pkgver
    python2 setup.py install --root="$pkgdir" --optimize=1
}
md5sums=('5e465e9e739bcc9f71935ca4e9706168')
