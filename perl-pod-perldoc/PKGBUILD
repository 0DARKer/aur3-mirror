pkgname='perl-pod-perldoc'
pkgver='3.20'
pkgrel='1'
pkgdesc="Look up Perl documentation in Pod format."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Pod-Perldoc'
source=('http://search.cpan.org/CPAN/authors/id/M/MA/MALLEN/Pod-Perldoc-3.20.tar.gz')
md5sums=('d915bfad087bf394ddffe9fa53c9b79c')
sha512sums=('7555b38a69c21991a7c6aebce9a49723f5f940ab3acca17600e4e8ade4de1fe3cf0d71e454304bb0e666f95514d1cb81ece30733d1b84e0b6e67c35b9e16d2a5')
_distdir="Pod-Perldoc-3.20"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

