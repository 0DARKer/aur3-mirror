# Contributor: Jonathan Wiersma <archaur at jonw dot org>
pkgname=fcc
pkgver=10.009
pkgrel=2
pkgdesc="FirstClass Client Groupware Client"
arch=('i686')
url='http://www.firstclass.com/Divisions/FAV13-0024FC95/?Plugin=FC&OpenItemURL=S047C50E4'
license=('unknown')
install="fcc.install"
depends=('qt3' 'alsa-lib' 'libart-lgpl' 'libpng12' 'libjpeg6')
options=('emptydirs')
source=("http://www3.firstclass.com/ClientDownloads/FC100ClientDownloadFiles/$pkgname-"${pkgver}"-Linux.i686.tar.bz2")
md5sums=('de1b5fe0e81b68ef2da4b5fce08c5f61')
build() {
	cd $srcdir/opt || return 1
	find firstclass -type d -exec install -dm755 $pkgdir/opt/{} \; || return 1
	find firstclass -type f -exec install -Dm644 {} \
		$pkgdir/opt/{} \; || return 1
	
	install -m755 firstclass/fcc $pkgdir/opt/firstclass || return 1
	cd $srcdir/usr/share/applications || return 1
	install -d $pkgdir/usr/share/applications || return 1
	install -m644 fcc.desktop $pkgdir/usr/share/applications || return 1
}

