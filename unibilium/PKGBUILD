pkgname=unibilium
pkgver=1.1.1
pkgrel=1
pkgdesc="a terminfo parsing library"
arch=('x86_64' 'i686')
url="https://github.com/mauke/unibilium/"
license=('GPLv3')
depends=()
source=("https://github.com/mauke/unibilium/archive/v$pkgver.tar.gz")

build() {
	cd "${pkgname}-${pkgver}"
	make PREFIX=/usr
}

package() {
	cd "${pkgname}-${pkgver}"
	DESTDIR="${pkgdir}" make install PREFIX=/usr
}
md5sums=('c6ff790d31c2fb9e2dbe6c40004d6fc3')
