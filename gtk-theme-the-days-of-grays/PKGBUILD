# Authors : liliumcruentus and nale12
# Packager: Reventlov <nontunauraspasmonmail@gmail.com> 
pkgname=gtk-theme-the-days-of-grays
pkgver=na
pkgrel=1
pkgdesc="A dark and usable gtk theme. "
arch=('i686' 'x86_64')
url="http://liliumcruentus.deviantart.com/art/The-Days-of-Grays-158652803"
license=('cc-by-nc-sa')
depends=()
source=('http://ompldr.org/vODJ3dA')
md5sums=('32ffb25d7b2eb146538c014645aed48f')

build() {
  cd "$srcdir/"

  mkdir -p $pkgdir/usr/share/themes/
  mkdir -p $pkgdir/usr/share/licenses/
  cp -r $srcdir/The\ days\ of\ grays/ $pkgdir/usr/share/themes/
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

