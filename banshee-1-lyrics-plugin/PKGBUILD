# Contributor: Stephane Travostino <stephane.travostino {at} gmail.com>

pkgname=banshee-1-lyrics-plugin
pkgver=0.8.1
pkgrel=3
pkgdesc="Lyrics plugin for Banshee"
arch=('i686' 'x86_64')
url="http://bansheelyricsplugin.googlecode.com/"
license=('GPL')
depends=('banshee' 'gnome-desktop-sharp' 'webkit-sharp')
source=(http://bansheelyricsplugin.googlecode.com/files/bansheelyricsplugin-${pkgver}.tar.bz2 compile-fix.patch)
md5sums=('1830f87e9e9c8af979f04daae64ad155'
         '67d5f2f5d2789e1c4f5af60d77fbac1d')



build() {
  export MONO_SHARED_DIR=${srcdir}/.wabi
  mkdir -p ${MONO_SHARED_DIR}
  cd ${srcdir}/bansheelyricsplugin-${pkgver}
  patch -p1 < ../../compile-fix.patch

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1

  rm -rf ${MONO_SHARED_DIR}
}
