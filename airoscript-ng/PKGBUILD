# Contributor: Lex Rivera <x-demon@x-demon.org>
pkgname=airoscript-ng
_realname=airoscript
pkgver=1.0rc1
pkgrel=2
pkgdesc="Airoscript ng"
arch=('i686' 'x86_64')
url="http://code.google.com/p/$_realname/"
license=('GPL2')
depends=()
makedepends=()
optdepends=()
conflicts=()
source=(http://$_realname.googlecode.com/files/Airoscript-ng1.0.tgz
        'path.patch'
        'makefile.patch'
        'config.patch')
md5sums=('694bd21704602c02c909e196dad1e92a'
         'add6811ca12fef5ffb7e83a587bcc366'
         '08afac94aa2b702844339865406c8216'
         'b14a2d1f5ebca496e6b524b3f3f7ccab')

build() {

  cd $srcdir/Airoscript/
  patch -Np0 -i ${srcdir}/path.patch
  patch -Np0 -i ${srcdir}/makefile.patch
  MAKEFLAGS="-j1"
  make prefix=$pkgdir/usr install || return 1
  mv ${pkgdir}/usr/etc ${pkgdir}/etc
  mv ${pkgdir}/etc/screenrc ${pkgdir}/usr/share/airoscript-ng/
  cd ${pkgdir}/etc
  patch -Np0 -i ${srcdir}/config.patch
  rm -rf ${pkgdir}/usr/share/locale
}
# vim:syntax=sh
