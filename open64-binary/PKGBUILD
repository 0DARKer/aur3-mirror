# Maintainer: Jens Staal <staal1978@gmail.com>

pkgname=open64-binary
pkgver=4.2.4
pkgrel=2
pkgdesc="Open64 is the final result of research contributions from a number of compiler groups around the world."
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.open64.net/home.html"
depends=('gcc')
provides=('open64')
source=('http://sourceforge.net/projects/open64/files/open64/Open64-4.2.4/open64-4.2.4-0.x86_64.tar.bz2')
md5sums=('c08d582c96d7961d4d3f429bdc983b7c')

package() {
    mkdir $pkgdir/opt/
    mkdir $pkgdir/opt/open64
    cd $startdir/src/open64-$pkgver/
    cp -r * $pkgdir/opt/open64
}

