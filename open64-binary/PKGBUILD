# Maintainer: Jens Staal <staal1978@gmail.com>

pkgname=open64-binary
pkgver=4.2.3
pkgrel=1
pkgdesc="Open64 is the final result of research contributions from a number of compiler groups around the world."
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.open64.net/home.html"
depends=('gcc')
provides=('open64')
source=('http://downloads.sourceforge.net/project/open64/open64/Open64-4.2.3/open64-4.2.3-0.x86_64.tar.bz2')
md5sums=('b27d151541c92d587c5b011effe58dbe')

package() {
    mkdir $pkgdir/opt/
    mkdir $pkgdir/opt/open64
    cd $startdir/src/open64-$pkgver-0/
    cp -r * $pkgdir/opt/open64
}

