# Maintainer: yugrotavele <yugrotavele at archlinux dot us>

pkgname=gmtp
pkgver=1.1.0
pkgrel=1
pkgdesc="A simple MP3 player client for MTP based devices"
arch=('i686' 'x86_64')
url="http://chewy509.110mb.com/gMTP.html"
license=('BSD')
depends=('flac' 'gconf' 'gtk2' 'libmtp' 'libid3tag' 'libusb' 'libvorbis')
source=(http://chewy509.110mb.com/$pkgname-$pkgver-i386.tar.gz)
md5sums=(ead38e4a06231e5b00e26c9721f0be13)

build() {
  cd "$srcdir/gMTP"
  sed -i 's:PREFIX ?= /usr/local:PREFIX ?= /usr:g' Makefile
  make
}

package() {
  cd "$srcdir/gMTP"
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  make DESTDIR="$pkgdir" install
  make DESTDIR="$pkgdir" register-gconf-schemas
}


