# Maintainer: jordz <jordz@archlinux.us>

pkgname=par2cmdline-tbb
pkgver=20100203
pkgrel=1
pkgdesc="This is a concurrent (multithreaded) version of par2cmdline 0.4"
arch=('i686' 'x86_64')
url="http://www.chuchusoft.com/par2_tbb/"
license=('GPL')
depends=('intel-tbb')

conflicts=('par2cmdline')
provides=('par2cmdline')

source=("http://www.chuchusoft.com/par2_tbb/par2cmdline-0.4-tbb-$pkgver.tar.gz" "memory-include.patch")

build() 
{
	cd ${srcdir}/par2cmdline-0.4-tbb-$pkgver

	patch -p1 < ${srcdir}/memory-include.patch	

	./configure --prefix=/usr
	make || return 1
	make DESTDIR=${pkgdir} install
} 

md5sums=('b1052a08c3c6eac8a7a0605addb161e7'
         '963ceed5dfc164f8629dbb3b26e4c7b7')
