# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=python-pymvpa
pkgver=0.4.5
pkgrel=1
pkgdesc='PyMVPA is a Python module intended to ease pattern classification analyses of large datasets.'
arch=('i686' 'x86_64')
url='http://www.pymvpa.org/'
license=('MIT')
depends=('python2' 'python-numpy' 'swig')
source=("https://alioth.debian.org/frs/download.php/3358/pymvpa_${pkgver}.tar.gz")
md5sums=('e06c20a1432099bd14651f5c9fbde1e7')

build() {
  cd pymvpa-${pkgver}

  python2 setup.py build
}

package() {
  cd pymvpa-${pkgver}

  python2 setup.py install --root=${pkgdir} --optimize=1

  # make files readable
  chmod -R +r ${pkgdir}/usr/lib/python2.7/site-packages/mvpa/data
}
