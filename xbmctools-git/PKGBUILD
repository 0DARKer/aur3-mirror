# Maintainer : Jo De Boeck <deboeck.jo@gmail.com>

pkgname=xbmctools-git
provides=('xbmctools')
conflicts=('xbmctools')
pkgver=0.1
pkgrel=1
arch=('any')
license=('GPL2')
pkgdesc="Set of tools to interface with XBMC"
url="http://github.com/grimpy/"
depends=('python2')
makedepends=('python2-distribute' 'git')

_source="git://github.com/grimpy/xbmctools.git"

build() {
    cd ${srcdir}/
    git clone ${_source}
    cd xbmctools
    python2 setup.py install --root=${pkgdir} --optimize=1
}
