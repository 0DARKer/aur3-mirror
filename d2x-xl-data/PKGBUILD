pkgrel=1
pkgdesc="D2X-XL required additional game files (non-proprietary)"
arch=(any)
url="http://www.descent2.de"
license=("Other License, Public Domain")
makedepends=(p7zip)
source=("http://downloads.sourceforge.net/d2x-xl/d2x-xl-data-$pkgver.7z")
