#Contributor: Fabio Falcinelli < fabio.falcinelli@gmail.com >

pkgname=openproj
pkgver=1.4
pkgrel=3
pkgdesc="A free, open source desktop alternative to Microsoft Project"
arch=('i686' 'x86_64')
url="http://www.openproj.org"
license=('custom:"CPAL"')
depends=('java-runtime')
source=(http://downloads.sourceforge.net/openproj/$pkgname-$pkgver.tar.gz openproj.desktop LICENSE)

md5sums=('07f0db8c6f171f816392ceaba244fd10'
         '0dcd38dee458f989a11f86006c5ea48d'
         'de444797af6f06710e88a3d1a6583219')

build() {	
	mkdir -p $startdir/pkg/usr/bin/
        install -D -m744 $startdir/src/LICENSE $startdir/pkg/usr/share/licenses/openproj/LICENSE
	cp -R $startdir/src/$pkgname-$pkgver/license/* $startdir/pkg/usr/share/licenses/openproj/

	install -D -m755 $startdir/src/openproj.desktop $startdir/pkg/usr/share/applications/openproj.desktop	
	mkdir -p $startdir/pkg/usr/share/openproj/	
	cd $startdir/src/$pkgname-$pkgver
	cp -R $startdir/src/$pkgname-$pkgver/* $startdir/pkg/usr/share/openproj/
	
	cd $startdir/pkg/usr/bin/
	echo "#!/bin/sh
java -Xms128m -Xmx768m -jar /usr/share/$pkgname/openproj.jar > /dev/null" > openproj
	chmod 755 openproj
}

