pkgname=pyportmidi
pkgver=0.0.6
pkgrel=1
pkgdesc="Python wrapper for portmidi"
arch=('i686' 'x86_64' 'any')
url="http://bitbucket.org/aalex/pyportmidi/"
license=('none')
#I've mailed the author for him to urgently put a license on his code !
depends=('python' 'pyrex' 'portmidi')
source=(http://bitbucket.org/aalex/pyportmidi/downloads/pyPortMidi-${pkgver}.tar.gz)
md5sums=('df747e9f224591ade003f4fde3a04932')

build() {
  cd "$srcdir"/pyPortMidi-"$pkgver"
  python setup.py install --prefix=/usr --root="${pkgdir}" || return 1
}
