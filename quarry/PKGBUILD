pkgname=quarry
pkgver=0.2.0
pkgrel=1 
pkgdesc="Quarry is a multi-purpose GUI for several board games, at present Go, Amazons and Othello."
url="http://home.gna.org/quarry/index.html"
depends=('librsvg>=2.5')
md5sums=('388b47fbf8fcfcca6e1ad6dd821bfcee')
source=(http://download.gna.org/quarry/$pkgname-$pkgver.tar.gz)
install=('quarry.install')
arch=(i686 x86_64)
license=(GPL)

build() { 
  cd $startdir/src/$pkgname-$pkgver 
  ./configure --prefix=/usr --disable-scrollkeeper-update
  make
  make DESTDIR=$startdir/pkg install
}
