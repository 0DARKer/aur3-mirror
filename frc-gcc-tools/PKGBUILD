pkgname=frc-gcc-tools
pkgver=1.0.0
pkgrel=1
pkgdesc="Some FRC-specific stuff for the VxWorks 6.3 GCC Toolchain"
arch=(any)
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL')
depends=('wput' 'vxworks-gcc-toolchain-bin' 'cmake')
options=('!strip' 'libtool' '!zipman')
install=$pkgname.install
source=(https://www.dropbox.com/s/7qxq57ec4q4v45f/$pkgname-$pkgver.tar.bz2)
sha512sums=('e95191b0a5c37d3cc7f65839b7de290544746dae8c030d69df70c03e34076eb3d6d55021951d7d36f7928491bc436f490623bdfe6d5522a0ef314838c6d46a62')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cp -R ./usr $pkgdir/
}
