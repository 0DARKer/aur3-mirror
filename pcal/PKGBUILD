# Contributor: Christoph Siegenthaler <csi@gmx.ch>
pkgname=pcal
pkgver=4.11.0
pkgrel=1
pkgdesc="Pcal is a calendar-generation program which produces nice-looking PostScript output"
url="http://pcal.sourceforge.net/"
depends=('glibc')
license=('GPL')
arch=('i686' 'x86_64')
source=(http://dl.sourceforge.net/${pkgname}/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tgz)
md5sums=('0ed7e9bec81fe3bdd62f8af283bef704')
 
build(){
  cd $startdir/src/${pkgname}-${pkgver}
  mkdir -p $startdir/pkg/usr/{bin,man/man1,man/cat1}
  make || return 1
  make BINDIR=$startdir/pkg/usr/bin MANDIR=$startdir/pkg/usr/man/man1 CATDIR=$startdir/pkg/usr/man/cat1 install || return 1
}
