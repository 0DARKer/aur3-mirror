pkgname=xbmc-standalone-service
pkgver=1.1
pkgrel=2
pkgdesc="Systemd service and user to autostart xbmc at boot"
arch=('any')
url="https://github.com/graysky2/xbmc-standalone-service"
license=('GPL')
depends=('xbmc>=13.1-5' 'systemd' 'xorg-server>=1.16-1' 'xorg-xinit')
install=readme.install
source=("https://github.com/graysky2/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('569b5e5060e5a074421a156060300b55d6d0ae542f60b32a4027f02d69c946b0')

package() {
	install -Dm0644 "$srcdir/$pkgname-$pkgver/init/xbmc.service" "$pkgdir/usr/lib/systemd/system/xbmc.service"

	install -dm 700 "$pkgdir"/var/lib/xbmc
	chown 420:420 "$pkgdir"/var/lib/xbmc
}
