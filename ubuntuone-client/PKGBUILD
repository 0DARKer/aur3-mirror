pkgname=ubuntuone-client
pkgver=1.5.3
pkgrel=1
pkgdesc="Client for Ubuntu One shareing service"
arch=('i686' 'x86_64')
url="https://launchpad.net/ubuntuone-client"
license=('GPL3')
groups=('ubuntuone')
depends=('dbus-python' 'evolution-data-server>=2.30.2' 'gnome-python-desktop' 'gnome-settings-daemon' 'pyinotify' \
'python' 'python-configglue' 'python-notify' 'python-simplejson' 'ubuntuone-storage-protocol>=1.5.0' 'xdg-utils')
# 'ubuntu-sso-client>=0.99.4'
makedepends=('intltool' 'nautilus' 'xorg-utils' 'imake')
optdepends=()
provides=('ubuntuone-client=$pkgver')
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('838027c7c19f54782f65417eedd84cc7')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
  make DESTDIR=$pkgdir install
}

