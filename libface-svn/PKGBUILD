pkgname=libface-svn
pkgver=271
pkgrel=1
pkgdesc="Face recognition library. SVN Version"
arch=('i686' 'x86_64')
url="http://libface.sourceforge.net/"
license=('GPL')
depends=('opencv>=2.1')
makedepends=('subversion' 'cmake' 'pkgconfig')
conflicts=('libface')
provides=('libface')

_svntrunk='https://libface.svn.sourceforge.net/svnroot/libface'
_svnmod=libface

build() {
  cd ${srcdir}

  if [ -d ${_svnmod}/.svn ]; then
    (cd ${_svnmod} && svn revert -R .)
    (cd ${_svnmod} && svn -r ${pkgver} up)
  else
    svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cd ${srcdir}/${_svnmod}/trunk

  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DLIB_INSTALL_DIR=lib
  make 
  make DESTDIR=${pkgdir} install 

}
