# Mantainer: realitygaps <realitygaps@yahoo.com>

pkgname=wordpress-mu
pkgver=2.9.2
pkgrel=1
pkgdesc="WordPress MU is a multiuser version of the state-of-the-art publishing platform with a focus on aesthetics, web standards, and usability. WordPress is both free and priceless at the same time."
arch=('i686' 'x86_64')
url="http://www.wordpress.com/"
license=('GPL')
depends=('php')
source=(http://mu.wordpress.org/$pkgname-$pkgver.tar.gz)
md5sums=('3dff1dd886414ef80ffddba7a33172bf')

build() {
	mkdir -p $pkgdir/srv/http/wordpress-mu
	cp -r $srcdir/$pkgname/* $pkgdir/srv/http/wordpress-mu
} 
