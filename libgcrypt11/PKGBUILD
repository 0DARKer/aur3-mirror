# Maintainer: Uwe Koloska <kolewu@koloro.de>

pkgname=libgcrypt11
pkgver=1.5.3
_sover=11.8.2
pkgrel=4
pkgdesc='gcrypt11 library (shared objects)'
arch=('i686' 'x86_64')
url="https://www.gnu.org/software/libgcrypt/"
license=(GPLv2)

if [ "${CARCH}" = "x86_64" ] ; then
  _arch="amd64"
  _arch2="x86_64"
  source=(http://ftp.debian.org/debian/pool/main/libg/libgcrypt11/libgcrypt11_${pkgver}-${pkgrel}_amd64.deb)
  md5sums=('0674cb2a53f86d878965b3e67dfcd18c')
else
  _arch="i386"
  _arch2="i386"
  source=(http://ftp.debian.org/debian/pool/main/libg/libgcrypt11/libgcrypt11_${pkgver}-${pkgrel}_i386.deb)
  md5sums=('4b9b86b0c69251a53177c47e12689f76')
fi

package() {
  ar vx $srcdir/${pkgname}_${pkgver}-${pkgrel}_${_arch}.deb
  tar xvf $srcdir/data.tar.xz
  install -Dm755 $srcdir/lib/${_arch2}-linux-gnu/libgcrypt.so.${_sover} $pkgdir/usr/lib/libgcrypt.so.${_sover}
  ln -s libgcrypt.so.${_sover} $pkgdir/usr/lib/libgcrypt.so.11
}
