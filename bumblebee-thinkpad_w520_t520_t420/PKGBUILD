package() {
	cd ${srcdir}
	mkdir -p ${pkgdir}/usr/bin
	for i in nvcommand nvdisablecard nvenablecard nvhelp nvprettyprint nvpwrctl nvrun nvrun32 nvrun64; do
		install -m 755 ${i} ${pkgdir}/usr/bin
	done
  mkdir -p ${pkgdir}/etc/pm/sleep.d
  install -m 755 00bumblebee_thinkpad ${pkgdir}/etc/pm/sleep.d
}

