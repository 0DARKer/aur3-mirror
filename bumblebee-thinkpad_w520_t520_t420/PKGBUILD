pkgname="bumblebee-thinkpad_w520_t520_t420"
pkgver="2.0"
pkgrel="1"
pkgdesc="Bumblebee power management scripts for the Lenovo ThinkPad w520, t520, and t420"
arch=("i686" "x86_64")
license=("GPL")
depends=("bumblebee")
url="https://lists.launchpad.net/hybrid-graphics-linux/msg01387.html"
install=("bumblebee-thinkpad.install")
source=("bumblebee-disablecard.thinkpad"
        "bumblebee-enablecard.thinkpad"
        "bumblebee-thinkpad.install")
sha512sums=("470f6483591f7a393837c7c86415be89c2663b64a3aa0f207cd60be59e2130b431a8a1b55f81ba1ed3330400af2b8cb3d5da4631c0646d37d16cf2f5ff2edf98"
            "e500d8103cd70791ad99ee8a3757a49789b8bc3d28e33cfcff505493b68e9920c758857c3bcbf5f2b7d1548a1f4ed572f81b397232d5ed6e3d3a8a782f25650e"
            "a6f3769ac0b3c2c1c0c1019255dad56ba2cea65f1a75359e72d448847a87617c3bd07c2f887f47a67efbffcbf9116a6bfffc33fe49b8886e99ad8499b63c87fd")

package() {
	cd ${srcdir}
	mkdir -p ${pkgdir}/usr/bin
	for i in bumblebee-enablecard.thinkpad bumblebee-disablecard.thinkpad; do
		install -m 755 ${i} ${pkgdir}/usr/bin
	done
}

