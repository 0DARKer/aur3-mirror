#!/bin/sh

##############################
# BEGIN FINDING ARCHITECTURE #
##############################
case $(uname -m) in
	i686)
		export ARCH=i686
		;;
	x86_64)
		export ARCH=x86_64
		export OPTIRUNARCH=x64
		if [ "${OPTIRUN32}" == true ]; then
			export OPTIRUNARCH=x86
		fi
		;;
esac
############################
# END FINDING ARCHITECTURE #
############################

###################
# BEGIN NVCOMMAND #
###################
nvcommand ${@}
#################
# END NVCOMMAND #
#################
