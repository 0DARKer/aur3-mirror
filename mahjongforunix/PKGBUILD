# Contributor: Jesse Jaara jesse.jaara@gmail.com

pkgname=mahjongforunix
pkgver=1.10
pkgrel=1
pkgdesc="'Mah-Jong for Unix' this is a real mah-jong game, not solitare mahjong. There is network play support in it."
arch=('i686' 'x86_64')
url="http://mahjong.julianbradfield.org/"
license=('GPL2')
depends=('gtk2')
makedepends=('perl' 'icoutils')
source=(Mahjong_for_unix.desktop
	"http://mahjong.julianbradfield.org/Source/mj-$pkgver-src.tar.gz")

md5sums=('cd272d1193372a2aedea5505af2db145'
         'f9bacf9fd6743d5e3a2fd86863607ce2')

build() {
  cd $srcdir/mj-$pkgver-src
  make || return 1
  make DESTDIR=$pkgdir/usr/ install || return 1
  
  mkdir -pm755 $pkgdir/usr/share/applications
  mkdir -m755 $pkgdir/usr/share/pixmaps
  cp $srcdir/Mahjong_for_unix.desktop $pkgdir/usr/share/applications/
  
  icotool -x ./icon.ico
  cp ./icon_1_32x32x8.png ${pkgdir}/usr/share/pixmaps/unixmahjong.png
}
