pkgname=cloudi
pkgver=0.4.0
pkgrel=1
pkgdesc="Convenient online dictionary for command line users"
arch=('i686' 'x86_64')
url="https://github.com/Tevino/cloudi"
license=('MIT')
makedepends=('git' 'sudo' 'python2-pip')
depends=('bash' 'xsel' 'python2>=2.6')

build() {
    sudo pip2 install ${pkgname}
}
