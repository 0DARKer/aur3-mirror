# Contributor: Adam Vogt <vogt.adam@gmail.com>
pkgname=xmobar-darcs
pkgver=20100326
pkgrel=1
pkgdesc="A minimal status bar for the XMonad Window Manager"
arch=('i686' 'x86_64')
url="http://code.haskell.org/~arossato/xmobar/"
license=('custom:BSD3')
makedepends=('ghc>=6.12' 'haskell-x11-xft' 'haskell-hinotify' 'haskell-stm' 'haskell-parsec' 'darcs')
conflicts=('xmobar')
source=()
md5sums=()

_darcstrunk="http://code.haskell.org"
_darcsmod="xmobar"

build() {
  cd $startdir/src/
  
  msg "Checking for previous build"
  # get the sources
  if [[ -d $startdir/src/$_darcsmod/_darcs ]]
  then
    msg "Retrieving missing patches"
    cd $_darcsmod
    darcs pull -a $_darcstrunk/$_darcsmod
  else
    msg "Retrieving complete sources"
    darcs get --partial --set-scripts-executable $_darcstrunk/$_darcsmod
  fi

  cd $startdir/src/$_darcsmod

# inotify is for Mail
  runghc Setup configure --flags="with_xft with_inotify" --prefix=$startdir/pkg/usr || return 1
  runghc Setup build || return 1
  runghc Setup install

  install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/$_darcsmod/BSD3
}
