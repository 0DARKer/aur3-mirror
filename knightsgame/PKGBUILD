# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: Lauri Niskanen <ape@ape3000.com>

pkgname=knightsgame
pkgver=016
pkgrel=1
pkgdesc='Action game that was originally released for Amiga in 1994.'
arch=('i686' 'x86_64')
url='http://www.knightsgame.org.uk/'
license=('GPL')
depends=('sdl' 'curl' 'fontconfig' 'boost>=1.35')
options=('!makeflags')
source=("http://www.knightsgame.org.uk/files/knights_${pkgver}_src.tar.gz")
md5sums=('09afb01215192e45f9ce90b35362deec')

build() {
  cd knights_${pkgver}_src

  sed 's|-lboost_thread-mt|-lboost_thread|g' -i Makefile
  make PREFIX=/usr
}

package() {
  cd knights_${pkgver}_src

  make PREFIX=${pkgdir}/usr install
}
