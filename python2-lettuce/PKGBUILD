pkgname=python2-lettuce
pkgver=0.1.31
pkgrel=1
pkgdesc="Behaviour Driven Development for python."
arch=(any)
url="http://lettuce.it/"
license=('GPL3')
depends=('python2')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/l/lettuce/lettuce-$pkgver.tar.gz#md5=de9c3e1e5ee85196bfec49ab71df2a9d")
noextract=()
md5sums=('de9c3e1e5ee85196bfec49ab71df2a9d')
build() {
    cd $srcdir
    python2 setup.py install --root=$pkgdir/ --optimize=1
}

