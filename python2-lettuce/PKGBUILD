pkgname=python2-lettuce
pkgver=0.1.35
pkgrel=2
pkgdesc="Behaviour Driven Development for python."
arch=(any)
url="http://lettuce.it/"
license=('GPL3')
depends=('python2')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/l/lettuce/lettuce-$pkgver.tar.gz")
noextract=()
md5sums=('1f4e51a387eaaba9850aaf061e8ca9b5')
build() {
    cd $srcdir/lettuce-$pkgver
    python2 setup.py install --root=$pkgdir/ --optimize=1
}

