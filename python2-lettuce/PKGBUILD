pkgname=python2-lettuce
pkgver=0.2.5
pkgrel=1
pkgdesc="Behaviour Driven Development for python."
arch=(any)
url="http://lettuce.it/"
license=('GPL3')
depends=('python2')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/l/lettuce/lettuce-$pkgver.tar.gz")
noextract=()
md5sums=('2352c761aa34423b773a104810201f15')

build() {
    cd $srcdir/lettuce-$pkgver
    python2 setup.py install --root=$pkgdir/ --optimize=1
}

