# Maintainer: Roberto Alfieri <roberto@alfieri.eu>

pkgname=vim-pathogen-git
_gitname=vim-pathogen
pkgver=v2.2.8.g1270dce
pkgrel=1
pkgdesc="vim plugin: manage your runtimepath"
arch=('any')
url="http://github.com/tpope/vim-pathogen"
license=('GPL')
groups=('vim-plugins')
depends=('vim')
makedepends=('git')
provides=('vim-pathogen')
conflicts=('vim-pathogen')
install=vimdoc.install
md5sums=('SKIP')

source=('git+https://github.com/tpope/vim-pathogen')

pkgver() {
  cd $_gitname
  # Use the tag of the last commit
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $_gitname
  msg "Connecting to GIT server...."
}

package() {
  cd $_gitname
  install -dm755 "$pkgdir/usr/share/vim/vimfiles/"
  cp -a autoload "$pkgdir/usr/share/vim/vimfiles/"
}
