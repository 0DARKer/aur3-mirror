pkgname=kmplayer
pkgver=0.11.3.c
_pkgver=0.11.3c
pkgrel=2
pkgdesc="Video player plugin for Konqueror and basic MPlayer/Xine/ffmpeg/ffserver/VDR frontend for KDE"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
url="http://kmplayer.kde.org"
depends=('kdebase-runtime' 'cairo')
makedepends=('cmake' 'automoc4' 'gtk2')
optdepends=('gtk2: for the Netscape plugin player')
install=$pkgname.install
# kmplayer.kde.org is down
# source=("http://kmplayer.kde.org/pkgs/$pkgname-$_pkgver.tar.bz2")
source=("http://mirrors.kernel.org/mandriva/Mandrakelinux/devel/cooker/SRPMS/contrib/release/$pkgname-$_pkgver-1.src.rpm")
md5sums=('401f4ebddda5862651be0755ca2e2490')

build() {
  cd $srcdir
  tar -xjf $pkgname-$_pkgver.tar.bz2
  mkdir build
  cd build
  cmake ../$pkgname-$_pkgver -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/build
  make DESTDIR=$pkgdir install
}
