pkgname=kmplayer
pkgver=0.11.3
pkgrel=1
pkgdesc="Video player plugin for Konqueror and basic MPlayer/Xine/ffmpeg/ffserver/VDR frontend for KDE"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
url="http://kmplayer.kde.org"
depends=('kdebase-runtime' 'cairo' 'dbus-glib')
makedepends=('cmake' 'automoc4')
install=${pkgname}.install
source=("http://kmplayer.kde.org/pkgs/$pkgname-$pkgver.tar.bz2")
md5sums=('e73664cf97892833e6613893cc0af413')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
