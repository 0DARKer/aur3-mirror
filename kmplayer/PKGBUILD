pkgname=kmplayer
pkgver=0.11.3.b
_pkgver=0.11.3b
pkgrel=1
pkgdesc="Video player plugin for Konqueror and basic MPlayer/Xine/ffmpeg/ffserver/VDR frontend for KDE"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
url="http://kmplayer.kde.org"
depends=('kdebase-runtime' 'cairo' 'dbus-glib')
makedepends=('cmake' 'automoc4')
install=$pkgname.install
source=("http://kmplayer.kde.org/pkgs/$pkgname-$_pkgver.tar.bz2")
md5sums=('fbfbb37bb47cf006be68bcbbaaa5475a')

build() {
  cd ${srcdir}
  # compile translations
  echo "add_subdirectory( po )" >> $pkgname-$_pkgver/CMakeLists.txt
  mkdir build
  cd build
  cmake ../$pkgname-$_pkgver -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/build
  make DESTDIR=$pkgdir install
}
