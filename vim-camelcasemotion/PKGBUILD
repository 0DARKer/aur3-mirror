pkgname=vim-camelcasemotion
_scriptname=camelcasemotion
_scriptid=16854
pkgver=1.52
pkgrel=1
pkgdesc='Motion through CamelCaseWords and underscore_notation'
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=1905'
license=('custom:vim')
groups=('vim-plugins')
depends=('vim-runtime>=7.0')
makedepends=('vim-runtime>=7.0')
install='vimdoc.install'
source=("${_scriptname}.vba.gz::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}")
md5sums=('3572e68d7b9491b4ac006cd3c4eb91ca')

build() {
    cd ${srcdir}
    install -d {doc,plugin}
    vim -c "UseVimball ." -c "q" ${_scriptname}.vba.gz
    install -d ${pkgdir}/usr/share/vim/vimfiles/{autoload,doc,plugin} || return 1
    install -m644 autoload/${_scriptname}.vim ${pkgdir}/usr/share/vim/vimfiles/autoload/ || return 1
    install -m644 doc/${_scriptname}.txt ${pkgdir}/usr/share/vim/vimfiles/doc/ || return 1
    install -m644 plugin/${_scriptname}.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/ || return 1
}
