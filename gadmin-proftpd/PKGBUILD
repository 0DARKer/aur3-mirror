pkgname=gadmin-proftpd
pkgver=0.4.2
pkgrel=1
pkgdesc="A GTK+ graphical user interface for the proftpd FTP server."
arch=(i686 x86_64)
license=('GPL')
depends=('gtk2' 'gksu' 'gnome-icon-theme' 'proftpd')
makedepends=('pkgconfig')
#replaces=('gproftpd' 'gadminproftpd')
#conflicts=('gproftpd' 'gadminproftd')
options=(!libtool)
url="http://mange.dynalias.org/linux.html"
source=(http://mange.dynalias.org/linux/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('3390229690fecfe265d86554eb51996a')
build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --sbindir=/usr/sbin --localstatedir=/var
  make || return 1
  make DESTDIR=${pkgdir} install
  mkdir -p ${pkgdir}/usr/share/applications/
  install -m644 ${srcdir}/${pkgname}-${pkgver}/desktop/gadmin-proftpd.desktop ${pkgdir}/usr/share/applications/
  chmod 700 ${pkgdir}/etc/gadmin-proftpd
}
