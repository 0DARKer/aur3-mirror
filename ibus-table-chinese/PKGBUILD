# Contributor: Hiroshi Yui <hiroshiyui@gmail.com>

pkgname=ibus-table-chinese
pkgver=1.4.0.20121008
pkgrel=1
pkgdesc="Some table-based input method of tables engines for IBus"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ibus/"
license=('GPL3')
provides=('ibus-table-chinese')
depends=('ibus' 'ibus-table>=1.2.0')
makedepends=('cmake')
source=(http://ibus.googlecode.com/files/$pkgname-$pkgver-Source.tar.gz
        https://fedorahosted.org/releases/c/m/cmake-fedora/cmake-fedora-modules-only-latest.tar.gz)
sha1sums=('78aa5d10ba3ed8143b2627072055bfb0f523f9b3'
          '7a6859cb7b8f92d4f1e6d0b0615a5845cb95616b')

build()
{
    rm -rf $srcdir/$pkgname-${pkgver%.*}-Source/Modules
    mv $srcdir/Modules $srcdir/$pkgname-${pkgver%.*}-Source
    cd $srcdir/$pkgname-${pkgver%.*}-Source
    cmake . -DCMAKE_INSTALL_PREFIX='/usr' -DLIBEXEC_DIR='/usr/libexec'
    make || return 1
    make DESTDIR="$pkgdir/" install
}

