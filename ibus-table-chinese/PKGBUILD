# Contributor: Leewings Ac <osideal@gmail.com>

pkgname=ibus-table-chinese
pkgver=1.3.0.20100527
pkgrel=1
pkgdesc="Some table-based input method of tables engines for IBus"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ibus/"
license=('GPLv3')
provides=('ibus-table-chinese=1.3.0')
depends=('ibus-table=1.3.0' 'aspell-en' 'pyenchant')
source=(http://ibus.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('f0c7cb9c4c931f898010abc6ac119e2d')

build()
{    
    cd $srcdir/$pkgname-$pkgver
    ./configure --prefix=/usr --libexecdir=/usr/lib/ibus
    make || return 1
    make DESTDIR="$pkgdir/" install
}

