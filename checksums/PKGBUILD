# Contributor: Mladen Pejakovic <pejakm@gmail.com>

pkgname=checksums
pkgver=0.3
pkgrel=1
pkgdesc="Service menu and a small script for calculation of md5, sha1 and sha256 checksums. Based on KonqCheckSum service menu"
url="http://kde-look.org/content/show.php/KonqCheckSum?content=83460"
depends=('kdebase-workspace')
optdepends=()
options=()
license=('GPL')
arch=('any')

source=(checksums.desktop
	checksums.sh
	checksums.png
	md5checksum.png
	sha1checksum.png)
md5sums=('7afecdca9831a38666617f7123ca9cef'
         '1cf971b54104f637a1b0f7a39112e2f9'
         '4ce3cd653dd7ceaa33a376400736e1bf'
         'f908be2414940675de599aea93beff8f'
         'a3f37d7d088167fe3a004f75a103bd22')

build() {
	cd ${srcdir}
	install -D -m 755 checksums.sh ${pkgdir}/usr/bin/checksums.sh || return 1
	install -D -m 755 checksums.desktop ${pkgdir}/usr/share/kde4/services/ServiceMenus/checksums.desktop || return 1
	install -d -m 755 ${pkgdir}/usr/share/icons/ || return 1
	install -D -m 644 checksums.png md5checksum.png sha1checksum.png ${pkgdir}/usr/share/icons/ || return 1
}
