# Contributor: Ewoud Nuyts <ewoud.nuyts@gmail.com>

pkgname=shc
pkgver=3.8.6
pkgrel=1
pkgdesc="A generic shell script compiler"
url="http://www.datsi.fi.upm.es/~frosal/frosal.html"
license="GPL"
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
arch=('i686')
install=
source=(http://www.datsi.fi.upm.es/~frosal/sources/${pkgname}-${pkgver}.tgz)
md5sums=('4e600d4f7119f9c2ce09690f972c4569')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make
  install -D -s shc $startdir/pkg/usr/bin/shc
  install -D -m 644 shc.1 $startdir/pkg/usr/man/man1/shc.1
}
