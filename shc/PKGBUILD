# Maintainer: Timothy Redaelli <timothy.redaelli@gmail.com>
# Contributor: Ewoud Nuyts <ewoud.nuyts@gmail.com>

pkgname=shc
pkgver=3.8.7
pkgrel=1
pkgdesc="A generic shell script compiler"
url="http://www.datsi.fi.upm.es/~frosal/frosal.html"
license=('GPL')
arch=('i686' 'x86_64')
source=(http://www.datsi.fi.upm.es/~frosal/sources/${pkgname}-${pkgver}.tgz)
sha256sums=('d855a2638e2b9e76156e38ae9886acafa36d34a79182adfe641445f85a5f3086')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  rm -f Makefile
  make shc
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -D -m 755 shc "$pkgdir"/usr/bin/shc
  install -D -m 644 shc.1 "$pkgdir"/pkg/usr/man/man1/shc.1
}

