# Maintainer Kovivchak Evgen <oneonfire@gmail.com>

pkgname=instead-quarantine
pkgver=0.3.5
pkgrel=1
pkgdesc="Quest with nonlinear plot"
arch=('any')
url="http://instead-games.googlecode.com/"
license=('custom')
depends=('instead')
source=(http://instead-games.googlecode.com/files/${pkgname}-${pkgver}.zip)
md5sums=('69fc3fd5c4e00ad823e4ac41706e34a0')

build() {
  cd "${srcdir}"
  mkdir -p $pkgdir/usr/share/instead/games/quarantine/{gfx,snd,theme}
  install -m644 quarantine/gfx/* $pkgdir/usr/share/instead/games/quarantine/gfx || return 1 
  install -m644 quarantine/snd/* $pkgdir/usr/share/instead/games/quarantine/snd || return 1
  install -m644 quarantine/theme/* $pkgdir/usr/share/instead/games/quarantine/theme || return 1
  install -m644 quarantine/{game.lua,intro.lua,main.lua,theme.ini} $pkgdir/usr/share/instead/games/quarantine/ || return 1
}

