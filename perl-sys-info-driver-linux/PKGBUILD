pkgname='perl-sys-info-driver-linux'
pkgver='0.75_01'
pkgrel='1'
pkgdesc="Linux driver for Sys::Info"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-config-general' 'perl-sys-info-base>=0.73' 'perl-test-sys-info>=0.20' 'perl-unix-processors')
url='http://search.cpan.org/dist/Sys-Info-Driver-Linux'
source=('http://search.cpan.org/CPAN/authors/id/B/BU/BURAK/Sys-Info-Driver-Linux-0.75_01.tar.gz')
md5sums=('3fa34f825bc72470974323a712800073')

build() {
  DIST_DIR="${srcdir}/Sys-Info-Driver-Linux-0.75_01"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
