# Maintainer: Bhoppi Chaw <bhoppi hotmail com>

pkgname=audenc
pkgver=2.0
pkgrel=2
pkgdesc='script for encoding directories with audio files from one format to another.'
arch=('any')
url='http://sourceforge.net/projects/audenc/'
license=('GPL')
depends=('mediainfo'
         'mplayer')
optdepends=('aften: A/52 encoding'
            'faac: AAC encoding alternative'
            'flac: FLAC encoding'
            'lame: MP3 encoding'
            'neroaacenc: AAC encoding'
            'neroaactag: AAC tagging'
            'vorbis-tools: OGG encoding')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")

build()
{
    cd $srcdir/$pkgname-$pkgver
    sed -i -e "s,/usr/local,$pkgdir/usr,g" install
    ./install
}
md5sums=('4661129ad773919fc40c6490e575fff7')
