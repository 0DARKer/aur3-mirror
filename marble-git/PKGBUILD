# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=marble-git
pkgver=20130109
pkgrel=1
pkgdesc="Virtual Globe and World Atlas"
arch=('i686' 'x86_64')
url="http://edu.kde.org/marble"
license=('LGPL 2.1')
depends=('kdebase-runtime' 'openssl' 'qtwebkit')
makedepends=('automoc4' 'cmake' 'git')
optdepends=("gpsd: GPS daemon and library to support USB/serial GPS devices")
install=marble.install
conflicts=('kdeedu-marble' 'marble')
source=('marble.install')
md5sums=('6739298b76a621e9be8ef29c7337bafd')

_gitroot=git://anongit.kde.org/marble
_gitname=marble


build() {
   cd $srcdir

   msg "Connecting to GIT server...."

   if [ -d $srcdir/$_gitname ] ; then
     cd $_gitname && git pull --rebase
   else
     git clone $_gitroot
   fi

   msg "GIT checkout done or server timeout"
   msg "Starting installation..."

   cd $srcdir
   mkdir build
   cd build
   cmake ../marble -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
   make
}

package() {   
   cd $srcdir/build
   make DESTDIR=$pkgdir install
}