# Maintainer: hauptmech
# Contributors: figo.zhang, lubosz

pkgname=pcl
pkgver=1.3.1
pkgrel=1
pkgdesc="Point Cloud Library:a comprehensive open source library for n-D Point Clouds and 3D geometry processing"
arch=('any')
url='http://www.pointclouds.org'
license=('BSD')
depends=('libflann' 'vtk')
optdepends=('openni-git')
makedepends=('cmake' 'eigen3' 'boost')
source=("http://dev.pointclouds.org/attachments/download/572/PCL-1.3.1-Source.tar.bz2")
build() {
	cd $srcdir/PCL-$pkgver-Source
	mkdir build && cd build


      	cmake .. \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_INSTALL_PREFIX=/usr

	make
}

package() {
  cd $srcdir/PCL-$pkgver-Source/build
  make DESTDIR=$pkgdir install
  install -D -m644 ../LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
md5sums=('a20953ed241fc7eb7d105878b01fa6c5')
