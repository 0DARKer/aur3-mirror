pkgname=pcl
pkgver=0.9.0
pkgrel=1
pkgdesc="Point Cloud Library:a comprehensive open source library for n-D Point Clouds and 3D geometry processing"
arch=('any')
url='http://www.ros.org/wiki/pcl/'
license=('GPL' 'LGPL')
makedepends=('cmake' 'pkgconfig' 'eigen3' 'flann' 'cminpack' 'boost')
source=("http://www.ros.org/wiki/pcl/standalone?action=AttachFile&do=get&target=pcl-0.9.0.tar.gz")

build() {
	cd $srcdir
	mkdir build || return 1
	cd build || return 1

	cmake ../pcl-0.9.0 \
		-DCMAKE_BUILD_TYPE=Release \
		-DANN_PREFIX=/usr           \
		-DCMINPACK_PREFIX=/usr

	make || return 1

	mkdir -p $pkgdir/usr/lib
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/include
	cp -a $srcdir/build/lib* $pkgdir/usr/lib/
	cp -a $srcdir/pcl-0.9.0/bin/* $pkgdir/usr/bin/
	cp -a $srcdir/pcl-0.9.0/include/* $pkgdir/usr/include/
}
md5sums=('669f23fe2db6d649bf38fb87ba17b8ee')

