pkgname=pcl
pkgver=1.5.1
pkgrel=1
pkgdesc="Point Cloud Library:a comprehensive open source library for n-D Point Clouds and 3D geometry processing"
arch=('any')
url='http://www.pointclouds.org'
license=('BSD')
depends=('flann' 'vtk' 'qhull')
optdepends=('openmpi' 'cuda-toolkit' 'openni-git')
makedepends=('cmake' 'eigen3' 'boost' 'openni-git')
source=("http://www.pointclouds.org/assets/files/$pkgver/PCL-$pkgver-Source.tar.bz2")
md5sums=('d96479ab65245c64d91a6fe1d803275a')

build() {
	cd $srcdir/PCL-$pkgver-Source

    find . -name *.cu | xargs sed -i '1 i #undef _GLIBCXX_USE_INT128'
    find . -name *.cu | xargs sed -i '1 i #undef _GLIBCXX_ATOMIC_BUILTINS'

    [[ -d build ]] && rm -r build
	mkdir -p build && cd build

    cmake .. \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_CUDA=ON

	make
}

package() {
  cd $srcdir/PCL-$pkgver-Source/build

  make DESTDIR=$pkgdir install

  install -Dm644 ../LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
