_target=i486-mingw32
_pkgname=libmspack
pkgname=mingw32-libmspack-static
pkgver=0.3alpha
pkgrel=1
pkgdesc="Provides both compression and decompression of some loosely related file formats used by Microsoft"
arch=(any)
url="http://www.cabextract.org.uk/libmspack/"
license=('LGPLv2')
makedepends=('mingw32-gcc')
options=(!strip !buildflags)
source=("http://www.cabextract.org.uk/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
md5sums=('08d08455b6d58ea649b35febd23f6386')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr/${_target} --build=$CHOST --host=${_target} --disable-shared  || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install
}

