
pkgname=lib32-fltk
pkgver=1.1.10
pkgrel=1
pkgdesc="Graphical user interface toolkit for X"
url="http://www.fltk.org/"
arch=('x86_64')
license=('LGPL')
groups=('lib32')
depends=('lib32-libjpeg' 'lib32-libpng' 'lib32-gcc-libs' 'lib32-libxft' 'lib32-libxext')
source=('http://mirrors.kernel.org/archlinux/extra/os/i686/fltk-1.1.10-1-i686.pkg.tar.xz')
md5sums=('74398e0681393b9006b7d09fdf9ab832')

build() {

  install -d $pkgdir/opt/lib32/usr/
  cp -R $srcdir/usr/* $pkgdir/opt/lib32/usr/
  
}

