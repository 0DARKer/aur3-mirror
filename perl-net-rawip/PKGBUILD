options=('!emptydirs')
depends=('libpcap>=1.3.0' 'perl')
makedepends=()
url='http://search.cpan.org/dist/Net-RawIP'
source=('http://search.cpan.org/CPAN/authors/id/S/SA/SAPER/Net-RawIP-0.25.tar.gz')
