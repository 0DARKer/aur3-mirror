# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
pkgname=perl-text-ngram
pkgver=0.13
pkgrel=1
pkgdesc="Perl package for Ngram analysis of text"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/Text-Ngram/"
license=('GPL' 'PerlArtistic')
source=(http://search.cpan.org/CPAN/authors/id/A/AM/AMBS/Text/Text-Ngram-$pkgver.tar.gz)
depends=('perl')
makedepends=('perl-extutils-makemaker')
options=(!emptydirs)
md5sums=('5f9dee484fc6d3a35ccad8fe1605bad2')

build() {
  cd $srcdir/Text-Ngram-$pkgver

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR=$pkgdir

  # remove perllocal.pod and .packlist
  find $pkgdir -name perllocal.pod -delete
  find $pkgdir -name .packlist -delete
}

# vim:set ts=2 sw=2 et:

