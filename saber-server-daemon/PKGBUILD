pkgname=saber-server-daemon
pkgver=0.1
pkgrel=1
pkgdesc="a saber server daemon"
arch=("i686" "x86_64")
url="https://github.com/GutenYe/saber"
license=("MIT-LICENSE")
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("rc.saber-server")

package() {
  cd $srcdir

  mkdir -p $pkgdir/etc/rc.d

  cp rc.saber-server $pkgdir/etc/rc.d/saber-server
}

