# Contributor: Max Resch <resch.max@gmail.com>

pkgname=polkit-kde-kcmodules
pkgver=20110814
pkgrel=1
pkgdesc="Configuration for Policy Kit"
arch=('i686' 'x86_64')
url="https://projects.kde.org/projects/extragear/base/polkit-kde-kcmodules-1"
license=('GPL')
depends=('polkit-kde')
makedepends=('cmake' 'automoc4' 'git')
source=("0001-Fix-explicit-authority-editor.patch")
md5sums=(bf5c535f4444b1ded81ebee763bcf429)
sha256sums=(6a3cc9841754aa7b6930b871fd1437df5f5536dd37cc07eaf805c829dc084ea5)

_gitroot="git://anongit.kde.org/polkit-kde-kcmodules-1"
_gitname="polkit-kde-kcmodules-1"

build() {
    cd "$srcdir"
    msg "Connecting to GIT server..."

    if [ -d $_gitname ] ; then
	msg "Resetting git."
        cd $_gitname && git reset --hard && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
    fi

    msg "GIT checkout done or server timeout"
    cd "$srcdir"/$_gitname
    msg "Patching..."
    patch -p1 < "$srcdir/0001-Fix-explicit-authority-editor.patch"
    msg "Starting make..."

    mkdir -p "$srcdir/build"
    cd "$srcdir/build"

    cmake ../${_gitname} \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release

    make
}
package() {
    cd ${srcdir}/build
    make DESTDIR=${pkgdir} install
}
