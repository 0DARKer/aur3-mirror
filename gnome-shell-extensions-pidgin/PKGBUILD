pkgname=gnome-shell-extensions-pidgin
pkgver=0.1.1
pkgrel=1
epoch=
pkgdesc="Pidgin integration for Gnome Shell."
arch=('any')
url="https://github.com/kagesenshi/gnome-shell-extensions-pidgin"
license=('unknown')
groups=()
depends=('gnome-shell')
makedepends=('git')
checkdepends=()
optdepends=('gnome-tweak-tool')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=()

package() {
  cd "$srcdir"
  git clone "https://github.com/kagesenshi/gnome-shell-extensions-pidgin.git"
  mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/pidgin@gnome-shell-extensions.gnome.org"
  cp gnome-shell-extensions-pidgin/* "$pkgdir/usr/share/gnome-shell/extensions/pidgin@gnome-shell-extensions.gnome.org/"
}

