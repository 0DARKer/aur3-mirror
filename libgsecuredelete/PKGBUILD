pkgname=libgsecuredelete
pkgver=0.2
pkgrel=3
pkgdesc="GObject wrapper library for nautilus-wipe"
license=('GPLv3')
arch=('i686' 'x86_64')
depends=('polkit' 'secure-delete')
url="http://wipetools.tuxfamily.org/libgsecuredelete.html"
source=('http://download.tuxfamily.org/wipetools/releases/libgsecuredelete/libgsecuredelete-0.2.tar.gz')
md5sums=('7273de2b608a08aeceb652e4d1a214e4')
sha1sums=('b4f8eb9a2d0d14c0070338f1331e68bfb0763f0b')
build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR="$pkgdir/" install
}
