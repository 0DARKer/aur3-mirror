# Maintainer: James McGlashan <james[at]jamesm[dot]com[dot]au>
pkgname=oh-my-zsh
pkgver=20111127
pkgrel=1
pkgdesc="A handful of functions, auto-complete helpers, and stuff that makes you shout."
arch=('any')
url="http://github.com/robbyrussell/oh-my-zsh"
license=('unknown')
depends=('zsh>=4.3.9')
makedepends=('git')
optdepends=('ruby')
install='oh-my-zsh.install'
# Uncomment the second to get more arch optimized oh-my-zsh. ( May become out-of-date )
#_gitroot='https://github.com/robbyrussell/oh-my-zsh.git'
_gitroot='https://github.com/jamesm-sitegen/oh-my-zsh.git'
_gitname='oh-my-zsh'

build() {
  cd "$srcdir"
  #msg "Connecting to GIT server.... [github:robbyrussell/oh-my-zsh]"
  msg "Connecting to GIT server.... [github:jamesm-sitegen/oh-my-zsh]"
  if [ -d $_gitname ] ; then
    msg "The local files are updated."
  else
    git clone --depth=1 $_gitroot $_gitname
  fi
  msg "GIT checkout done or server timeout"
}

package() {
  install -d "$pkgdir/usr/local/share/$pkgname"
  cp -r oh-my-zsh/* "$pkgdir/usr/local/share/$pkgname"
}

# vim:set ts=2 sw=2 et:
