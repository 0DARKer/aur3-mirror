# Maintainer: 3ED <krzysztof1987 /at/ gmail /dot/ com>

pkgname=libreoffice-extension-languagetool
_pkgname=languagetool
pkgver=1.8
pkgrel=2
pkgdesc="An Open Source style and grammar checker (22 languages)"
arch=('any')
url="http://extensions.services.openoffice.org/project/languagetool"
license=('LGPL')
groups=('libreoffice-extensions')
depends=('libreoffice-common')
makedepends=("unzip")
source=("http://www.languagetool.org/download/LanguageTool-stable.oxt?${pkgver}")
noextract=(${source[@]##*/})
sha256sums=('3d219bba608c70baf0606992625d57164cb228ea44ac0423ed20708e47bc79dc')

package() {
  _DEST="${pkgdir}/usr/lib/libreoffice/share/extensions/${_pkgname}/"
  install -dm755 "${_DEST}"
  unzip -q "$srcdir"/LanguageTool-stable.oxt?${pkgver} -d "${_DEST}"
}
