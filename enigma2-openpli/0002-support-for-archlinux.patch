From 979e857024846f937d82307e5dbde81f0e9abb85 Mon Sep 17 00:00:00 2001
From: betacentauri <@>
Date: Sat, 21 Jan 2012 19:13:41 +0100
Subject: [PATCH] support for archlinux

---
 enigma2-build/lib/base/Makefile.am |    3 ++-
 enigma2-build/main/Makefile.am     |    2 +-
 2 files changed, 3 insertions(+), 2 deletions(-)

diff --git enigma2-build/lib/base/Makefile.am enigma2-build/lib/base/Makefile.am.b
index 5423ca1..6e09c4b 100644
--- enigma2-build/lib/base/Makefile.am
+++ enigma2-build/lib/base/Makefile.am.b
@@ -2,7 +2,8 @@ AM_CPPFLAGS = \
 	-I$(top_srcdir) \
 	-I$(top_srcdir)/include \
 	-include Python.h \
-	-include $(top_builddir)/enigma2_config.h
+	-include $(top_builddir)/enigma2_config.h \
+	-lrt
 
 noinst_LIBRARIES = libenigma_base.a
 
diff --git enigma2-build/main/Makefile.am enigma2-build/main/Makefile.am
index fa74d33..68aedb4 100644
--- enigma2/main/Makefile.am
+++ enigma2/main/Makefile.am
@@ -53,7 +53,7 @@ enigma2_LDADD = \
 	@PYTHON_LDFLAGS@ \
 	@X11_LIBS@ \
 	@LIBDDVD_LIBS@ \
-	-lcrypt -lnl -lnl-genl -ldvbcsa
+	-lcrypt -lnl -lnl-genl -ldvbcsa -lrt
 
 enigma2_LDFLAGS = -Wl,--export-dynamic
 
