# $Id: $
# Maintainer: Vesa Kaihlavirta <vegai@iki.fi>

pkgname=quasselclient
pkgver=0.7.1
pkgrel=1
pkgdesc="Qt4 IRC client with a separated core - client only"
url="http://quassel-irc.org"
arch=('i686' 'x86_64')
license=('GPL')
depends=('kdelibs' 'oxygen-icons' 'hicolor-icon-theme')
makedepends=('cmake' 'automoc4')
source="${url}/pub/quassel-${pkgver}.tar.bz2"
md5sums='31c832f6f79d5236785c3dd888088621'
install=quassel.install

build() {
  [[ ! -d build ]] && mkdir build
  cd build

  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr/ \
    -DWITH_KDE=1 \
    -DWITH_OPENSSL=ON \
    -DCMAKE_BUILD_TYPE="Release" \
    -DWANT_CORE=OFF \
    -DWANT_MONO=OFF \
    ../quassel-${pkgver}/ \
    -Wno-dev

  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
