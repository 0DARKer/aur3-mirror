pkgname="machine-update"
pkgver="0.31"
pkgrel=3
pkgdesc="The Linux Counter automatic update script"
url="http://counter.li.org/scripts/"
license="GNU"
arch=('i686' 'x86_64')
depends=('perl')
source=("http://counter.li.org/scripts/$pkgname")
md5sums=('dc1abb36e7d8ed07654471aee8959950')
build() {
	install -D -m755 $startdir/src/$pkgname $startdir/pkg/usr/bin/$pkgname
}
