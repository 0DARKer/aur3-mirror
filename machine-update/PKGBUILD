pkgname="machine-update"
pkgver="0.30"
pkgrel=5
pkgdesc="The Linux Counter automatic update script"
url="http://counter.li.org/scripts/"
license="GNU"
arch=('i686' 'x86_64')
depends=('perl')
source=("http://counter.li.org/scripts/$pkgname")
md5sums=('4207c7468bc09fc91257b91792ad2ed8')
build() {
	install -D -m755 ${srcdir}/$pkgname ${pkgdir}/usr/bin/$pkgname
}
