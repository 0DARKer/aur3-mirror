# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdewebdev4-svn
pkgver=1197936
pkgrel=1
pkgdesc="A web development tool for KDE4"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdelibs4-git' 'kdepimlibs4-git' 'kdebase4-runtime-git' 'kdepim4-runtime-git' 'ruby' 'tidyhtml' 'docbook-xsl')
makedepends=('subversion' 'cmake')
provides=(kdewebdev)
conflicts=(kdewebdev)

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdewebdev
_svnmod=kdewebdev

build() {

cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir $_svnmod-build
  cd $_svnmod-build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/usr

  make
}

package() {
  cd $srcdir/$_svnmod-build
  make DESTDIR=$startdir/pkg install
  rm -rf $srcdir/$_svnmod-build
}
