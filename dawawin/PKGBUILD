# Maintainer: M-Hashem <med.hashem@gmail.com>

pkgname=dawawin
pkgver=0.1.14
pkgrel=1
pkgdesc="Display and store Arabic poems"
arch=('i686' 'x86_64')
license=('waqf')
url="http://linuxac.org"
depends=('python2' 'gstreamer0.10')
source=(http://sourceforge.net/projects/dawawin/files/${pkgname}_${pkgver}.tar.gz
        dawawin.patch)
md5sums=('a7f98042416d35b79fb1d844a83d8477'
         '2d33d6a81dd718c1abac2d3cd2f72edd')
build() {
	cd ${srcdir}/${pkgname}_${pkgver}
	patch -Np1 -i ../dawawin.patch
	python2 setup.py install --root=$pkgdir/ --optimize=1
	install -Dm 644 ${pkgname}.svg ${pkgdir}/usr/share/pixmaps/${pkgname}.svg
}
