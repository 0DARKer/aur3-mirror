# Maintainer: M-Hashem <med.hashem@gmail.com>

pkgname=dawawin
pkgver=0.1
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Display and store Arabic poems"
license=('waqf')
url="http://linuxac.org"
depends=('python2' 'pygobject-devel' 'gstreamer0.10')
source=(http://sourceforge.net/projects/dawawin/files/${pkgname}_${pkgver}.tar.gz)
md5sums=('83666bf9621ee1ae055f1c4b3e4ba310')
build() {
	cd /${srcdir}/${pkgname}_${pkgver}
	python2 setup.py install --root=$pkgdir/ --optimize=1
	install -Dm 644 ${pkgname}.svg ${pkgdir}/usr/share/pixmap/${pkgname}.svg
}
