# Contributor: Yanxiang Qian <scifi.org@gmail.com>
pkgname=swarm
pkgver=2.2.3
pkgrel=1
pkgdesc="Swarm is a platform for agent-based models (ABMs)."
url="http://www.swarm.org"
license="GPL"
depends=('tk' 'blt' 'gperf' 'libxpm' 'libpng' 'xorg-server' 'hdf5' 'gcc')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://pj.freefaculty.org/Swarm/$pkgname-$pkgver.tar.gz)
md5sums=(40a6f7cd35cd5166086ef17310f6d78b)

build() {
    cd $startdir/src/$pkgname-$pkgver
    ./configure --prefix=/usr --disable-jar --without-jdkdir --with-pic --with-gnu-ld --with-tclincludedir=/usr/include/tcl8.4/ --with-tclscriptdir=/usr/lib/tcl8.4/ --with-tkscriptdir=/usr/lib/tk8.4/
    make || return 1
    make DESTDIR=$startdir/pkg install
}
