pkgname=twisted-mail
pkgver=0.2.0
pkgrel=1
pkgdesc="SMTP, POP3, and IMAP4 protocol implementation together with clients and servers"
url="http://twistedmatrix.com/projects/mail/"
license=""
depends=('twisted')
source=(http://tmrc.mit.edu/mirror/twisted/Mail/0.2/TwistedMail-$pkgver.tar.bz2)
md5sums=('bae977d92cfcb1a3a5e884262ed444cc')

build() {
  cd $startdir/src/TwistedMail-$pkgver
  python setup.py install --prefix=/usr --root=$startdir/pkg
}
