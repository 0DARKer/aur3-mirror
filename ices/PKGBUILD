
pkgname=ices
pkgver=0.4
pkgrel=1
pkgdesc="source client for broadcasting in mp3 to an Icecast2 server"
url="http://icecast.org/ices.php"
license="GPL"
install=ices.install
depends=('libxml2' 'lame' 'libvorbis' 'python' 'perl')
source=(http://download.us.xiph.org/releases/$pkgname/$pkgname-$pkgver.tar.gz ices.conf)
md5sums=('d31450c4011561dae0229f071cb41cb6' '61aff335bf7c65c76de4ac550655c3aa')
build() {
	       cd $startdir/src/$pkgname-$pkgver
	       ./configure --prefix=/usr
	       make || return 1
	       make prefix=$startdir/pkg/usr install
	       mkdir $startdir/pkg/etc
	       cp $startdir/src/ices.conf $startdir/pkg/etc/ices.conf
	}
