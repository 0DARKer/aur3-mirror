# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=cpp-netlib
pkgver=0.8.1
pkgrel=1
pkgdesc="A lightweight and fast C++ network library"
arch=('i686' 'x86_64')
url="http://cpp-netlib.github.com/"
license=('boost')
depends=()
makedepends=('cmake')
source=(https://github.com/downloads/cpp-netlib/cpp-netlib/$pkgname-$pkgver.tar.bz2)
md5sums=('5896c24aff0f0d2a0c0b92ebbbe5c908')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cmake .
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -d ${pkgdir}/usr/{include/${pkgname},share/licenses/${pkgname}}
  
  #Install library files
  cp -r boost/ ${pkgdir}/usr/include/${pkgname}/

  install -Dm644 LICENSE_1_0.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}


# vim:set ts=2 sw=2 et:
