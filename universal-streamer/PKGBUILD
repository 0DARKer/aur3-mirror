pkgname=universal-streamer
pkgver=0.1.10
pkgrel=1
pkgdesc="Universal streamer is a simple Perl script to stream videos from many websites in MPlayer..."
arch=('any')
url="http://i51.tinypic.com/2lkvhqs.png"
license=('GPL')
depends=('mplayer' 'perl-libwww')
source=(http://trizen.go.ro/files/$pkgname)
noextract=()
md5sums=('e322d02a76c55239de6296dcad146b13')

build() {
  install -Dm 755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}
