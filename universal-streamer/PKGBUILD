pkgname=universal-streamer
pkgver=0.1.7
pkgrel=2
pkgdesc="Universal streamer is a simple Perl script to stream videos from many websites with MPlayer."
arch=('any')
url="http://code.google.com/p/trizen/downloads/detail?name=$pkgname-$pkgver.tar.gz"
license=('GPL')
depends=('mplayer' 'perl-libwww')
source="http://trizen.googlecode.com/files/$pkgname-$pkgver.tar.gz"
noextract=()
md5sums=('ae9a2ea7af1e7d409d3f5ab10ddf3d6f')

build() {
  install -Dm 755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}
