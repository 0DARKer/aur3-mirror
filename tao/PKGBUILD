# Contributor: Sebastian Faltoni <sebastian.faltoni//gmail.com>
pkgname=tao
pkgver=1.2.0
pkgrel=2
pkgdesc="Tao is a Open Source Multiplatform binding for OpenGL Api and other libraries for mono and .net"
url="http://www.mono-project.com/Tao"
depends=('mono')
source=(http://www.go-mono.com/tao/$pkgver/Tao-$pkgver-$pkgrel-mono.zip)
md5sums=('ed14713ce8d3cd87fce5bff58b3a92e3')

build() {
  mkdir -p $startdir/pkg/usr/lib/
  
  libtool install  $startdir/src/Tao-1.2.0-1/lib/*  $startdir/pkg/usr/lib/
  install -m755 $startdir/src/Tao-1.2.0-1/lib/* $startdir/pkg/usr/lib
}
