# Contributor: Jonathan Wiersma <archaur at jonw dot org>
pkgname=eclipse-rse
pkgver=3.3
_pkgdate=201106080935
pkgrel=1
pkgdesc="Manage remote projects in Eclipse"
arch=('i686' 'x86_64')
url="http://www.eclipse.org/dsdp/tm/"
license=('EPL')
depends=("eclipse>=3.4")
optdepends=('openssh')
_mirror="http://mirror.csclub.uwaterloo.ca/eclipse"
source=("$_mirror/tm/downloads/drops/R-$pkgver-$_pkgdate/RSE-runtime-$pkgver.zip")

package() {
	cd $srcdir || return 1
	install -dm755 $pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/ || return 1
	find eclipse -type f -exec install -Dm644 {} \
		$pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/{} \; || return 1
}

md5sums=('379a6213280da09188d0fe10eaf138c6')
