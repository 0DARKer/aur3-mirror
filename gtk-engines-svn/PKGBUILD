# Contributor: Andrea Cimitan <andrea.cimitan@gmail.com>

pkgname=gtk-engines-svn
_realname=gtk-engines
pkgver=669
pkgrel=1
pkgdesc="Theme engines for GTK+ 2"
url=http://svn.gnome.org/viewcvs/gtk-engines/trunk
license=('GPL')
arch=(i686 x86_64)
depends=('gtk2>=2.10.11' 'cairo')
makedepends=('pkgconfig' 'subversion')
# options=('nolibtool')
source=()
provides=('gtk-engines')
conflicts=('lighthouse-gtk2' 'clearlooks-gtk2' 'gtk-engines')
replaces=('lighthouse-gtk2' 'gtk-engines')
md5sums=()

_svnmod="gtk-engines"
_svntrunk="https://svn.gnome.org/svn/$_svnmod/trunk/"

build() {
  cd $startdir/src

  msg "Getting sources..."
  svn co $_svntrunk $_svnmod -r $pkgver
  cd $_svnmod

  ./autogen.sh --prefix=/usr --enable-animation
  make || return 1
  make DESTDIR=${startdir}/pkg install
}
