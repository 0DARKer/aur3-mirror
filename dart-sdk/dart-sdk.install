post_upgrade() {
  # there's some weird problems with keeping an old snapshot
  _file=${pkgdir}/opt/dart-sdk/lib/_internal/compiler/implementation/dart2js.dart.snapshot
  if [ -f "$_file" ]; then
	  rm "$_file"
  fi
}

post_install() {
  _file=${pkgdir}/opt/dart-sdk/lib/_internal/compiler/implementation/dart2js.dart.snapshot
  if [ -f "$_file" ]; then
	  rm "$_file"
  fi
}
