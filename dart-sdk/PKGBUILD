pkgname=dart-sdk
pkgver=15130
pkgrel=1
pkgdesc="the Dart language SDK. (integration version as tested)"
arch=('i686' 'x86_64')
url="http://www.dartlang.org/docs/sdk/"
license=('BSD')
depends=('unzip' 'wget')
optdepends=()
makedepends=()
provides=()
conflicts=()
replaces=()
install=dart-sdk.install
changelog=
noextract=()

if test "$CARCH" == x86_64; then
	source=("http://gsdview.appspot.com/dart-editor-archive-integration/$pkgver/dartsdk-linux-64.tar.gz")
	md5sums=('6bfec473d88d3703ee70d53efd2b95fe')
else
	source=("http://gsdview.appspot.com/dart-editor-archive-integration/$pkgver/dartsdk-linux-32.tar.gz")
	md5sums=('004fb95c1b0f16d867dea1b39fb0c684')
fi

package(){
	mkdir -p ${pkgdir}/opt
	find ${srcdir}/dart-sdk -perm -u+x -exec chmod +x '{}' +
	find ${srcdir}/dart-sdk -perm -u+r -exec chmod +r '{}' +
	cp -r $srcdir/dart-sdk ${pkgdir}/opt/
}