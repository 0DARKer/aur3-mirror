# Maintainer: Serge Ziryukin <ftrvxmtrx@gmail.com>
pkgname=ohcount-git
pkgver=20100710
pkgrel=2
pkgdesc="Ohcount is a source code line counter."
arch=('i686' 'x86_64')
url="http://ohcount.sf.net"
license=('GPL')
depends=('pcre')
makedepends=('git' 'bash' 'ruby' 'ragel' 'gperf')
provides=('ohcount')
conflicts=('ohcount')
install=

_gitroot="git://ohcount.git.sourceforge.net/gitroot/ohcount/ohcount"
_gitname="ohcount"

build() {
  cd $srcdir

  msg "Connecting to GIT server..."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cp -r $srcdir/$_gitname $srcdir/$_gitname-build
  cd $srcdir/$_gitname-build
  ./build ohcount || return 1

  mkdir -p $startdir/pkg/usr/bin
  cp bin/ohcount $startdir/pkg/usr/bin/
}
