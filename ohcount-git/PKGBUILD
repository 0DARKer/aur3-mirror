# Maintainer: spider-mario <spidermario@free.fr>
# Contributor: Serge Ziryukin <ftrvxmtrx@gmail.com>
pkgname=ohcount-git
pkgver=20130406
pkgrel=1
pkgdesc="Ohcount is a source code line counter."
arch=('i686' 'x86_64')
url="https://github.com/blackducksw/ohcount"
license=('GPL')
depends=('pcre')
makedepends=('git' 'bash' 'ruby' 'ragel' 'gperf')
provides=('ohcount')
conflicts=('ohcount')
install=
source=('git+https://github.com/blackducksw/ohcount.git')
sha1sums=(SKIP)

build() {
  cd "$srcdir/ohcount"
  ./build ohcount
}

package() {
  install --directory "$pkgdir/usr/bin"
  install "$srcdir/ohcount/bin/ohcount" "$pkgdir/usr/bin/"
}
