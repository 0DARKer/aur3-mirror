# Maintainer: Dany Martineau <dany.luc.martineau gmail.com>
pkgname=morris
pkgver=0.2
pkgrel=1
pkgdesc="Implementation of the board game Nine Men's Morris."
arch=('i686' 'x86_64')
url="http://www.nine-mens-morris.net/index.html"
license=('LGPL')
depends=('perlxml' 'gtk2' 'gconf')
makedepends=('make')
source=(http://www.nine-mens-morris.net/data/${pkgname}-${pkgver}.tar.bz2)
md5sums=('3baa1684810f3f1990a8af10b48a96f8')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}

