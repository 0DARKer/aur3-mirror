# Maintainer: Si Feng <si.feng at me.com>

pkgname=uwsgi-lts
pkgname_orig=uwsgi
pkgver=1.2.6
pkgrel=1
pkgdesc="A fast, self-healing and developer/sysadmin-friendly application container server coded in pure C"
arch=(i686 x86_64)
url="http://projects.unbit.it/$pkgname_orig/"
license=(GPL2)
depends=(python2 libxml2)
conflicts=(uwsgi)
makedepends=(gcc python2)
source=(http://projects.unbit.it/downloads/$pkgname_orig-$pkgver.tar.gz)
md5sums=('e704bf8e315129a16ea233342580e5d1')

build() {
  cd $srcdir/$pkgname_orig-$pkgver
  python2 uwsgiconfig.py --build
}

package() {
  cd $srcdir/$pkgname_orig-$pkgver
  mkdir -p $pkgdir/usr/bin
  install -Dm755 uwsgi $pkgdir/usr/bin/uwsgi
}
