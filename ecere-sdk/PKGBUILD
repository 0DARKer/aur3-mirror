pkgname=ecere-sdk
pkgver=0.42.1
pkgrel=1
pkgdesc="The Ecere SDK is a cross-platform toolkit for building software applications"
arch=('i686')
url="http://www.ecere.com/"
license=('custom')
depends=('libx11' 'libxrender' 'libgl' 'libjpeg' 'zlib' 'freetype2' 'ncurses' 'libpng' 'fontconfig' 'giflib')
source="http://www.ecere.com/ecere-linux-i686-$pkgver.tar.gz"
md5sums=('20271d985264d68975952de6536f9c5a')

build() {
  cd $srcdir
  install -d $pkgdir/usr/lib
  install -d $pkgdir/usr/bin
  cp bin/* $pkgdir/usr/bin
  cp lib/* $pkgdir/usr/lib
}
