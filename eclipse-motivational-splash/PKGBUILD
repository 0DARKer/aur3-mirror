# Maintainer: Alexander RÃ¸dseth <rodseth@gmail.com>
pkgname=eclipse-motivational-splash
pkgver=1.0
pkgrel=2
pkgdesc="A motivating splash screen for Eclipse"
arch=('any')
url="http://thxforthe.info/2008/12/20/fuck-yeah-sometimes-you-just-know-this-day-is-gonna-be-epic/"
license=('custom')
depends=('eclipse=3.7')
makedepends=('imagemagick')
source=('http://thxforthe.info/blog/wp-content/uploads/2008/12/fuck-yeah.jpg')
md5sums=('a558dd2011e501c53b99ad6fac0e551b')

build() {
  cd "$srcdir"

  mkdir -p \
    "$pkgdir/usr/share/eclipse/plugins/org.eclipse.platform_3.7.0.v201106131736/"
  convert -resize 455x295 fuck-yeah.jpg splash.bmp  
  echo "Public domain? Fair use?" > LICENSE
}

package() {
  cd "$srcdir"

  install -Dm644 splash.bmp \
    "$pkgdir/usr/share/eclipse/plugins/org.eclipse.platform_3.7.0.v201106131736/"
  install -Dm 644 LICENSE \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
# vim:set ts=2 sw=2 et:
