# Contributor: Christian Sturm <reezer@reezer.org>
pkgname=perl-debug-client
pkgver=0.12
pkgrel=1
pkgdesc="client side code for perl debugger "
arch=(any)
url="http://search.cpan.org/dist/Debug-Client/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=(!emptydirs)
install=
source=(http://search.cpan.org/CPAN/authors/id/S/SZ/SZABGAB/Debug-Client-$pkgver.tar.gz)
md5sums=('c6a4c5d9d53a1c1a78551ffe6012ea5a')

build() {
  cd "$srcdir/Debug-Client-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name perllocal.pod -delete
  find "$pkgdir" -name .packlist -delete
}

# vim:set ts=2 sw=2 et:
