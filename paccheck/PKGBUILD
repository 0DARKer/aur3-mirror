# Original creator: IgnorantGuru http://igurublog.wordpress.com
pkgname=paccheck
pkgver=0.8.13
pkgrel=4
pkgdesc="Compares Arch Linux pacman sync and package cache to multiple mirrors to help detect compromised mirrors"
arch=(any)
depends=('wget' 'curl')
backup=('etc/paccheck/mirrorlist')
license=('GPL3')
url="https://bbs.archlinux.org/viewtopic.php?id=113917"
source=("https://github.com/berbae/paccheck/raw/master/$pkgname-$pkgver.sh" "mirrorlist")
md5sums=('325394aecebaa6d2db8d278d81e24bef'
         '7d0b772e05f1f41aa53e7bfa735aeb9a')
sha256sums=('d7addef513cbd8c9a208a29a139e3df67c0e21529754e761c64dba7f1fdd45ee'
            '86de83ee1c22576bdad415c2be2eb379600d8cdbb145e45afe4cef8cfba2965f')

package() {
	install -Dm755 "$srcdir/$pkgname-$pkgver.sh" "$pkgdir/usr/bin/$pkgname"
	mkdir -p "$pkgdir/etc/paccheck"
	cp "$srcdir/mirrorlist" "$pkgdir/etc/paccheck/"
}

