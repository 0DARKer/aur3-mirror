# Maintainer: IgnorantGuru <ignorantguru@users.sourceforge.net>
pkgname=paccheck
pkgver=0.8.10
pkgrel=1
pkgdesc="Compares Arch Linux pacman sync and package cache to multiple mirrors to help detect compromised mirrors"
arch=(any)
depends=('wget' 'curl')
backup=('etc/paccheck/mirrorlist')
license=('GPL3')
url=("http://igurublog.wordpress.com/downloads/script-$pkgname/")
source=("http://downloads.sourceforge.net/project/ig-scripts/$pkgname-$pkgver.sh")
#md5sums=(`wget -O - http://downloads.sourceforge.net/project/ig-scripts/$pkgname-$pkgver.sh | md5sum | head -c 32`)
md5sums=('34d88293a1fb19cb19044d596a9dba7e')
sha256sums=('8c0f3879b2aa954045dc0984b60c6838c09c2abeddd0d6afe07856d884895fbb')

build() {
	install -Dm755 "$srcdir/$pkgname-$pkgver.sh" "$pkgdir/usr/bin/$pkgname" || return 1
	mkdir -p "$pkgdir/etc/paccheck"
	cp "$startdir/mirrorlist" "$pkgdir/etc/paccheck/"
}

