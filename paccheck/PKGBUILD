pkgname=paccheck
pkgver=0.8.13
pkgrel=1
pkgdesc="Compares Arch Linux pacman sync and package cache to multiple mirrors to help detect compromised mirrors"
arch=(any)
depends=('wget' 'curl')
backup=('etc/paccheck/mirrorlist')
license=('GPL3')
url="https://bbs.archlinux.org/viewtopic.php?id=113917"
source=("$pkgname-$pkgver.sh")
md5sums=('0f682ef4cb0f20c8faa479f6e1324042')
sha256sums=('a3ffe3e7bdf8228b0dd26be89da1e2f33128400cb595bb35e14672c905007604')

package() {
	install -Dm755 "$srcdir/$pkgname-$pkgver.sh" "$pkgdir/usr/bin/$pkgname"
	mkdir -p "$pkgdir/etc/paccheck"
	cp "$startdir/mirrorlist" "$pkgdir/etc/paccheck/"
}

