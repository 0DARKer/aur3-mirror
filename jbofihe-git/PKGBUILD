# Maintainer: Baptiste Jonglez <baptiste--aur at jonglez dot org>
pkgname=jbofihe-git
pkgver=20120113
pkgrel=1
pkgdesc="jbofihe is a command-line program designed to perform various operations on Lojban text: checking grammatical correctness, displaying grammatical structure, approximate English translation. Comes with the 'cmafihe', 'smujajgau', 'jvocuhadju' and 'vlatai' tools."
arch=('i686' 'x86_64')
url="https://github.com/lojban/jbofihe"
license=('GPL')
depends=()
makedepends=('git')
backup=()
options=()
install=

# TODO: provide the dictionary (/usr/lib/jbofihe/smujmaji.dat) in a separate package to ease upgrading?

_gitroot=https://github.com/lojban/jbofihe
_gitname=jbofihe

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  msg "Launching config.pl..."

  perl config.pl --prefix=/usr

  msg "Launching make..."

  # MAKEFLAGS: the Makefile doesn't seem to support more than one thread...
  make MAKEFLAGS="-j1" all
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

