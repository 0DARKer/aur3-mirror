# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-cgi-psgi
pkgver=0.15
pkgrel=1
pkgdesc="Adapt CGI.pm to the PSGI protocol"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~miyagawa/CGI-PSGI-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/M/MI/MIYAGAWA/CGI-PSGI-$pkgver.tar.gz")
md5sums=('58a39711add2b48229710688c5f81cfd')

build() {
	cd "$srcdir/CGI-PSGI-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/CGI-PSGI-$pkgver"
	make install DESTDIR="$pkgdir"
}
