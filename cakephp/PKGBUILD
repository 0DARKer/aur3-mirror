# Maintainer: Peter A. Shevtsov <pshevtsov@severusweb.ru>
pkgname=cakephp
pkgver=1.3.12
pkgrel=1
pkgdesc='The Rapid Development Framework for PHP'
arch=('any')
url='http://cakephp.org/'
license=('MIT')
depends=('php')
source=("$pkgname-$pkgver.tar.gz::https://github.com/$pkgname/$pkgname/tarball/$pkgver"
        'cake.sh')
md5sums=('4fb43b93862dc3b2042e087cef338a4a'
         '1039b808697dc8eea98451f4c5786ea4')

package() {
    cd "$srcdir/$pkgname-$pkgname-8236c7e/cake"
    install -D -m 644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    cp -R . "$pkgdir/usr/share/cake"
    install -D -m 755 "$srcdir/cake.sh" "$pkgdir/usr/bin/cake"
}
