# Maintainer: Alex Zose <alexander.zosimidis[at]gmail[dot]com>
pkgname=taskunifier
pkgver=3.2.4
pkgrel=1
pkgdesc="TaskUnifier is a task management software based on the well-known GTD (getting things done) methodology."
url="http://www.taskunifier.com/"
arch=('any')
license=('BSD 3')
depends=('java-runtime>=6')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install='taskunifier.install'
source=("http://surfnet.dl.sourceforge.net/project/taskunifier/binaries/TaskUnifier_3_2_4/TaskUnifier_3_2_4_linux.tar"
	"taskunifier.desktop")
md5sums=('fbd2a87ce62c274b1b2c9ee2e37c1e87'
	 'f25858686360b4b15c45445fb1666944')
 
 build() {
  sed -i 's/`dirname \$0`/\/opt\/TaskUnifier/' ${srcdir}/TaskUnifier/TaskUnifier.sh
 }
 
 package() {
  INSTALL_DIR=${pkgdir}/opt
  mkdir $INSTALL_DIR
  cp -R ${srcdir}/TaskUnifier $INSTALL_DIR
  install -m755 taskunifier.desktop $INSTALL_DIR/TaskUnifier
}