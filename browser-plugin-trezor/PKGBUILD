# Maintainer: Fabian Schuh <mail@xeroc.org>
pkgname=browser-plugin-trezor
pkgver=1.0.5
pkgrel=1
pkgdesc="The Browser Plugin for the first Hardware Bitcoin Wallet."
arch=( 'i686' 'x86_64' )
url="https://mytrezor.com/"
license=('unknown')
depends=()
makedepends=('rpmextract')
options=('emptydirs')

source_i686=("https://github.com/trezor/webwallet-data/raw/master/plugin/1.0.5/${pkgname}-${pkgver}.i386.rpm")
md5sums_i686=('f282909b1ec6cac4b4f5d9dd09c68145')

source_x86_64=("https://github.com/trezor/webwallet-data/raw/master/plugin/1.0.5/${pkgname}-${pkgver}.x86_64.rpm")
md5sums_x86_64=('043f5e05a1146000daa75e48edbb2894')

build() {
  cd "${pkgdir}"
  rpmextract.sh ../../browser-plugin-trezor-1.0.5.i386.rpm
}
