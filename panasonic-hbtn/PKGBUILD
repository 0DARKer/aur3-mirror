# $Id$
# Maintainer: Heiher <admin@heiher.info>

pkgname=panasonic-hbtn
pkgver=20130124
pkgrel=1
pkgdesc="Panasonic Tablet Button driver"
arch=('i686' 'x86_64')
url="https://github.com/heiher/panasonic-hbtn"
license=('GPL')
depends=('linux')
install=module.install
source=(http://heiher.info/sftp/files/${pkgname}-${pkgver}.tar.gz)
sha1sums=('3c925363b8077a2340e757b170c384d6ea4a4c23')

build() {
  cd ${pkgname}-${pkgver}

  make
  gzip ${pkgname}.ko
}

package() {
  cd ${pkgname}-${pkgver}

  EDIR=${pkgdir}//usr/lib/modules/extramodules-3.7-ARCH
  install -dm755 ${EDIR}
  install -m644 ${pkgname}.ko.gz ${EDIR}/${pkgname}.ko
}
