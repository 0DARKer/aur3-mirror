# $Id$
# Maintainer: Heiher <admin@heiher.info>

pkgname=panasonic-hbtn
pkgver=20140306
pkgrel=1
pkgdesc="Panasonic Tablet Button driver"
arch=('i686' 'x86_64')
url="https://github.com/heiher/panasonic-hbtn"
license=('GPL')
depends=('linux')
install=module.install
source=(${pkgname}-${pkgver}.tar.gz)
sha1sums=('777a66d8f5b0ed9af85479bd250d7cf0bc15fa00')

build() {
  cd ${pkgname}-${pkgver}

  make
  gzip ${pkgname}.ko
}

package() {
  cd ${pkgname}-${pkgver}

  EDIR=${pkgdir}/usr/lib/modules/extramodules-3.13-ARCH
  install -dm755 ${EDIR}
  install -m644 ${pkgname}.ko.gz ${EDIR}/${pkgname}.ko
}
