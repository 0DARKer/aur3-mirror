# Maintainer: z3bra, willy at mailoo dot org
pkgname=fcount
pkgver=0.3
pkgrel=1
pkgdesc="Counts the number of files in a directory"
arch=('i686' 'x86_64')
url="http://git.z3bra.org/cgit.cgi/fcount"
license=('WTFPL')
source=("http://git.z3bra.org/cgit.cgi/$pkgname/snapshot/$pkgname-$pkgver.tar.gz")
md5sums=('621910703c1a54a0503259a64af2fc24')

build() {
    cd "$pkgname-$pkgver"
    make
}

package() {
    cd "$pkgname-$pkgver"
    install -D -m0755 fcount $pkgdir/usr/bin/fcount
}
