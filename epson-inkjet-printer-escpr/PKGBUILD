pkgname=epson-inkjet-printer-escpr
pkgver=1.1.1
pkgrel=1
pkgdesc="A common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('i686' 'x86_64')
url="http://avasys.jp"
license=('GPL')
depends=('cups')
source=(http://linux.avasys.jp/drivers/lsb/epson-inkjet/stable/SRPMS/$pkgname-$pkgver-1lsb3.2.src.rpm)
md5sums=('e66b7e8c0e1b5bec5025f9f5bf5fd93e')

build() {
  cd ${srcdir}
  tar xzvf ${pkgname}-${pkgver}-1lsb3.2.tar.gz
  cd ${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
