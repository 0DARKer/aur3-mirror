# Maintainer: Quentin Foussette <quentinf7@gmail.com>

pkgname=epson-inkjet-printer-escpr
pkgver=1.0.3
pkgrel=1
pkgdesc="A common Linux printer driver for Epson Multifonction Inkjet Printers."
arch=('i686' 'x86_64')
url="http://avasys.jp"
license=('GPL')
depends=('cups')
makedepends=('rpmextract')
source=('config.patch'
        http://linux.avasys.jp/drivers/lsb/epson-inkjet/stable/SRPMS/$pkgname-$pkgver-1lsb3.2.src.rpm)
md5sums=('747d6876ef732c95136cfaac42dc6ee1'
         'c94b8b869a91f31745065ae253855e5a')

build() {
  cd "${srcdir}"
  rpmextract.sh $pkgname-$pkgver-1lsb3.2.src.rpm || return 1
  tar xzvf $pkgname-$pkgver-1lsb3.2.tar.gz || return 1
  cd $pkgname-$pkgver
  patch -Np1 -i "${srcdir}/config.patch" configure.ac
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install || return 1
}

# vim:set ts=2 sw=2 et:
