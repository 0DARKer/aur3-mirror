pkgname=epson-inkjet-printer-escpr
pkgver=1.3.1
pkgrel=1
pkgdesc="Epson Inkjet Printer Driver (ESC/P-R) for Linux"
arch=('i686' 'x86_64')
url="http://download.ebz.epson.net/dsc/search/01/search/?OSC=LX"
license=('GPL2')
depends=('cups' 'gutenprint')
options=('!libtool')
source=(http://download2.ebz.epson.net/dsc/f/03/00/02/50/05/9d0696df976e5f5577b4141cddbf3b8c54dee7dc/$pkgname-$pkgver-1lsb3.2.src.rpm)
md5sums=('d9bcb4524a15e4ae1ec3afcaeacffe10')
 
prepare() {
  tar zxf "$pkgname-$pkgver-1lsb3.2.tar.gz"
}
 
build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr \
              --with-cupsfilterdir=/usr/lib/cups/filter \
              --with-cupsppddir=/usr/share/ppd
  make
}
 
package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
