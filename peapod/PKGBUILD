# Contributor: timetrap : timetrap AT gmail DOT com
pkgname=peapod
pkgver=0.7.2
pkgrel=2
pkgdesc="A commandline podcatcher that works."
arch=('i686' 'x86_64')
url="http://www.peapodpy.org.uk"
license=('GPL')
depends=('python' 'urlgrabber' 'python-eyed3')
optdepends=('libgpod: For ipod support')
source=(http://www.peapodpy.org.uk/downloads/peapod-$pkgver.tar.gz setup.py)
md5sums=('2566cf8eed7a57e13aafc6ae6763c7bb' 'f136b2fdecbb004cf5fafebdb451c8ae')
build() {

  cp "$startdir/setup.py" "$startdir/src/$pkgname-$pkgver/"
  cd "$startdir/src/$pkgname-$pkgver"
  python setup.py install --root=$startdir/pkg  

}

