pkgname='perl-xml-xpathengine'
pkgver='0.12'
pkgrel='1'
pkgdesc="a re-usable XPath engine for DOM-like trees"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/XML-XPathEngine'
source=('http://search.cpan.org/CPAN/authors/id/M/MI/MIROD/XML-XPathEngine-0.12.tar.gz')
md5sums=('ecb1121f5a11411a2d4942c87d8725af')

build() {
  _DISTDIR="${srcdir}/XML-XPathEngine-0.12"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
