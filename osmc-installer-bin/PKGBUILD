pkgname=osmc-installer-bin
pkgver=1.0.5
pkgrel=1
pkgdesc="OSMC Installer allows you to install OSMC on a variety of devices."
url=http://osmc.tv
arch=(i686 x86_64)
license=(GPL)
depends=( 'glibc>=2.14' 'gcc>=4.1.1' 'qt4>=4.5.3' 'gcc-libs>=4.1.1' 'zlib>=1.1.4' )

provides=(osmc-installer)

if [[ $CARCH == i686 ]]; then
  _debarch=i386
  sha256sums=('446f9cf168e5a5e5950053d0897d551919d5a42c18733fe777364dc83d8b71ea')
else
  _debarch=amd64
  sha256sums=('aecec1371b237a309e97f95d68baa4efe833b170c6802ee1b9ec762253797bb3')
fi

source=(http://download.opensuse.org/repositories/home:/osmc/Debian_7.0/${_debarch}/osmc-installer_${pkgver//_/-}_${_debarch}.deb)

package() {
  tar -xf data.tar.?z -C "$pkgdir" ./usr
}

