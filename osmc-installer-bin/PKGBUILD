pkgname=osmc-installer-bin
pkgver=1.0.1
pkgrel=1
pkgdesc="OSMC Installer allows you to install OSMC on a variety of devices."
url=http://osmc.tv
arch=(i686 x86_64)
license=(GPL)
depends=( glibc>=2.14 gcc>=4.1.1 qt4>=4.5.3 gcc-libs>=4.1.1 zlib>=1.1.4 )

provides=(osmc-installer)

if [[ $CARCH == i686 ]]; then
  _debarch=i386
  sha256sums=('e50450bc23fbb6c561ab31bdc7e05b2a135915b600cb5d5637014a5bd35c5548')
else
  _debarch=amd64
  sha256sums=('2d1de14bb8bb67f4bf57adbcc2417e955161a03d93ae622a02acbb510dea09b7')
fi

source=(http://download.opensuse.org/repositories/home:/osmc/xUbuntu_14.10/${_debarch}/osmc-installer_${pkgver//_/-}_${_debarch}.deb)

package() {
  tar -xf data.tar.?z -C "$pkgdir" ./usr
}

