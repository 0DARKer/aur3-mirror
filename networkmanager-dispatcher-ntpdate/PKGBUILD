# Contributor: SiD/sidious <miste78@web.de>
pkgname=networkmanager-dispatcher-ntpdate
pkgver=1.0
pkgrel=1
pkgdesc="A script that runs ntpdate if Networkmanager starts a connection"
url="http://www.gnome.org/projects/NetworkManager/"
license="GPL"
depends=('networkmanager>=0.7.0')
source=(ntpdate)
md5sums=('9a3b8da1efac158d91bb9fc699736b03')
arch=('i686' 'x86_64')

build() {
  cd $startdir/src/
  install -d -m 0755 $startdir/pkg/etc/NetworkManager/dispatcher.d	
  install -m 0755 ntpdate $startdir/pkg/etc/NetworkManager/dispatcher.d/ntpdate	
}
