# Contributor: Pierre-Paul Paquin <pierrepaulpaquin@gmail.com>
pkgname=pgtap
pkgver=0.24
pkgrel=1
pkgdesc="TAP and/or xUnit-style test framework for PostgreSQL"
arch=(i686 x86_64)
url="http://pgtap.org"
license=(custom:PostgreSQL)
depends=(perl-test-harness)
makedepends=()
optdepends=()
source=(http://pgfoundry.org/frs/download.php/2701/$pkgname-$pkgver.tar.bz2 LICENSE)
md5sums=(9d0360c87fca0ddf3ca9da49b9b71947 0a0f3ea79a9e8af8880226d2605ed622)

build() {
	cd "$pkgname-$pkgver" || return 1
	make && make DESTDIR="$pkgdir" install || return 1
	install -Dm 644 "$startdir/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE" || return 1
}
