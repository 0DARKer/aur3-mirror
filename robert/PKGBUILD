# Robert can be downloaded from i2p by Bittorrent :
#    http://sponge.i2p/files/Robert-Stable.torrent
# Once you get the archive robert-beta.tar.gz, place it in this directory


# Contributor: Composable Continuation <Composable_Continuation AT yahoo DOT com>
pkgname=robert
pkgver=0.0.11
pkgrel=1
pkgdesc="Bittorent client for I2P in python"
arch=('i686' 'x86_64')
url="http://sponge.i2p/files/Robert-Stable.torrent"
license=('MIT')
groups=()
depends=(python wxpython)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(Robert-0.0.11.tar.gz
        install.patch
       )
noextract=()
md5sums=('056d23b0ca8de5856863e21189137a5f'
         '0a95918eb938664a92ee7c4f89802ab1')


build() {
  cd "$srcdir/Robert-src/src"

  # LICENSES
  mkdir -p $pkgdir/usr/share/licenses/robert         || return 1
  chmod +r *LICENSE*
  cp *LICENSE* $pkgdir/usr/share/licenses/robert     || return 1

  # INSTALL
  patch install ../../install.patch || return 1
  export pkgdir
  ./install                         || return 1
}

