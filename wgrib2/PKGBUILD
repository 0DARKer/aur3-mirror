pkgname=wgrib2
pkgver=0.1.8.2
pkgrel=1
pkgdesc="A program to manipulate, inventory and decode GRIB-2 files"
arch=('i686' 'x86_64')
url="http://www.cpc.noaa.gov/products/wesley/wgrib2/"
license=('custom')
depends=('netcdf' 'hdf5' 'jasper' 'libpng')
source=(ftp://ftp.cpc.ncep.noaa.gov/wd51we/$pkgname/$pkgname.tgz.v${pkgver/0\./}
        $pkgname.patch)
md5sums=('4323a65bccea51bfc4e0eb94deae119a'
         'e764013458386fcb00a7a0672d255f7f')

build() {
  cd "$srcdir"/grib2
  patch -Np0 -i ../$pkgname.patch || return 1
  make || return 1
  install -Dm755 $pkgname/$pkgname "$pkgdir"/usr/bin/$pkgname
  install -Dm644 $pkgname/LICENSE-$pkgname "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
