# Contributor: Graziano Giuliani <giuliani@lamma.rete.toscana.it>

pkgname=wgrib2
pkgver=0.1.9.7a
pkgrel=1
pkgdesc="A program to manipulate, inventory and decode GRIB-2 files"
arch=('i686' 'x86_64')
url="http://www.cpc.noaa.gov/products/wesley/wgrib2/"
license=('custom')
depends=('netcdf' 'jasper' 'libpng' 'libmariadbclient')
makedepends=('g2clib')
source=(ftp://ftp.cpc.ncep.noaa.gov/wd51we/$pkgname/wgrib2_nolib.tgz.v1.9.7a
        wgrib2.patch)
md5sums=('3c89cf47f6918d36961fb201a7a7194b'
         '776c0e926dcec0fbce514461e843341b')

build() {
  cd "$srcdir"/grib2
  patch -p0 -i $srcdir/wgrib2.patch
  FC=gfortran F90=gfortran F77=gfortran make || return 1
}

package()
{
  cd "$srcdir"/grib2
  install -Dm755 $pkgname/$pkgname "$pkgdir"/usr/bin/$pkgname
  install -Dm644 $pkgname/LICENSE-$pkgname "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
