# Contributor: Graziano Giuliani <giuliani@lamma.rete.toscana.it>

pkgname=wgrib2
pkgver=0.1.9.4
pkgrel=1
pkgdesc="A program to manipulate, inventory and decode GRIB-2 files"
arch=('i686' 'x86_64')
url="http://www.cpc.noaa.gov/products/wesley/wgrib2/"
license=('custom')
depends=('netcdf' 'jasper' 'libpng' 'libmysqlclient')
makedepends=('g2clib')
source=(ftp://ftp.cpc.ncep.noaa.gov/wd51we/$pkgname/wgrib2_nolib.tgz.v1.9.4
        wgrib2.patch)
md5sums=('dbc5d962653dbf34837d0a7ffbd1d79a'
         'd6bc8091d818be2cc16f226b045a20b6')

build() {
  cd "$srcdir"/grib2
  patch -p0 -i $srcdir/wgrib2.patch
  make || return 1
  install -Dm755 $pkgname/$pkgname "$pkgdir"/usr/bin/$pkgname
  install -Dm644 $pkgname/LICENSE-$pkgname "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
