pkgname=krazy2
pkgver=867140
pkgrel=1
pkgdesc="The KDE 'Krazy' Checker"
arch=('i686' 'x86_64')
url="http://www.kde.org/"
license=('GPL')
groups=()
depends=('qt' 'perl-tie-ixhash' 'perl-xml-libxml' 'desktop-file-utils')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/quality/${pkgname}
_svnmod=${pkgname}

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -r "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD
  #
  perl Makefile.PL PREFIX=/usr
  make || return 1
  make DESTDIR="${pkgdir}/" install || return 1
  mv -f ${pkgdir}/usr/bin/perlbin/site/* ${pkgdir}/usr/bin/
  rmdir ${pkgdir}/usr/bin/{perlbin/site,perlbin}
  V=`perl -e 'printf "%vd", $^V'`
  ln -sf /usr/share/perl5/site_perl/${V}/Krazy ${pkgdir}/usr/lib/Krazy
  cd helpers
  make PREFIX=/usr DESTDIR="${pkgdir}/" install || return 1
  cd ../plugins
  make PREFIX=/usr DESTDIR="${pkgdir}/" install || return 1
  cd ../extras
  make PREFIX=/usr DESTDIR="${pkgdir}/" install || return 1
  cd ../src
  qmake || return 1
  make || return 1
  make INSTALL_ROOT="${pkgdir}/usr/" install || return 1

  rm -f ${pkgdir}/usr/lib/perl5/core_perl/perllocal.pod
  rmdir ${pkgdir}/usr/lib/perl5/core_perl
}
