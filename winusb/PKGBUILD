# Maintainer: Rolinh <robinDOThahlingATgw-computingDOTnet>
pkgname=winusb
pkgver=1.0.4
pkgrel=2
pkgdesc="Simple tool for creating a usb stick Windows (Vista and Seven) installer from an ISO image or a DVD."
arch=('x86_64' 'i686')
url="http://en.congelli.eu/prog_info_winusb.html"
license=('GPL3')
depends=('wxgtk' 'ntfsprogs')
makedepends=()
source=(http://fr.congelli.eu/directdl/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('11e27d0a0a63b8bedb90d7f4294ab84e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
