# Maintainer: Rolinh <robinDOThahlingATgw-computingDOTnet>
pkgname=winusb
pkgver=1.0.5
pkgrel=1
pkgdesc="Simple tool for creating a usb stick Windows (Vista, Seven and 8) installer from an ISO image or a DVD."
arch=('x86_64' 'i686')
url="http://en.congelli.eu/prog_info_winusb.html"
license=('GPL3')
depends=('wxgtk' 'ntfsprogs')
makedepends=()
source=(http://fr.congelli.eu/directdl/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('009e1f2cef15ef200ee53392f555a005')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
