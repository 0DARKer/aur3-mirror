pkgname=drawpile
pkgver=0.9.6
pkgrel=1
pkgdesc='Collaborative drawing program specially made for use with pen tablets'
arch=('x86_64' 'i686')
url='http://drawpile.net/'
license=('GPL2')
depends=('qt5-base' 'cmake' 'gcc')
makedepends=('gendesk')
source=("http://drawpile.net/files/src/$pkgname-$pkgver.tar.gz")
sha256sums=('8e0338eb478908b39878fe28ece5fd5df7e9ed2c22d7419d1a1a1c0c2b3278cc')

prepare() {
  cd "$pkgname-$pkgver"

  gendesk -f -n --pkgname "$pkgname" --pkgdesc "$pkgdesc" \
    --categories 'Graphics'
}

build() {
  cd "$pkgname-$pkgver"

  # Ensure build is an empty directory
  rm -rf build
  mkdir -p build
  cd build

  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"

  make -C build DESTDIR="$pkgdir" install
  install -Dm644 "src/client/ui/icons/builtin/$pkgname.png" \
    "$pkgdir/usr/share/pixmaps/$pkgname.png"
  install -Dm644 "$pkgname.desktop" \
    "$pkgdir/usr/share/applications/$pkgname.desktop"
}

# vim:set ts=2 sw=2 et:
