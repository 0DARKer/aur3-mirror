# Contributor: Peter Crighton <petecrighton@googlemail.com>
pkgname=liblscp-svn
pkgver=2277
pkgrel=1
pkgdesc="LinuxSampler Control Protocol (LSCP) wrapper library"
arch=('i686' 'x86_64')
url="http://www.linuxsampler.org/"
license=('LGPL')
makedepends=('subversion')
conflicts=('liblscp' 'liblscp-cvs')
provides=('liblscp' 'liblscp-cvs')

_svntrunk=(https://svn.linuxsampler.org/svn/liblscp/trunk)

build() {
  if [ -d $srcdir/.svn ]
  then
      svn up $srcdir
  else
      svn co $_svntrunk $srcdir
  fi

  make -f Makefile.svn
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
