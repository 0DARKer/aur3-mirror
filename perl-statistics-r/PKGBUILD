# Maintainer: Jason St. John <jstjohn .. purdue . edu>
pkgname='perl-statistics-r'
_pkgname='Statistics-R'
pkgver='0.25'
pkgrel='1'
pkgdesc="Statistics::R - Perl interface to the R statistical program"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
# Statistics::R depends on IPC::Run which depends on IO::Pty, which is a part of perl-io-tty
# We're including 'perl-io-tty' as a dependency in case the users don't have it already.
depends=('perl' 'r' 'perl-regexp-common' 'perl-ipc-run' 'perl-io-tty')
makedepends=('perl-test-pod')
url="http://search.cpan.org/dist/${_pkgname}"
source=("http://search.cpan.org/CPAN/authors/id/F/FA/FANGLY/${_pkgname}-${pkgver}.tar.gz")
sha512sums=('df7afe0ef63206b8e21f8eaac68ea2b044263a27ae4b6ee7f1723d3f20994f510f0e5cd96f4502c1da1fb7e1cb5972ab758577b0c89f0d1f0fe53082412e915c')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/${_pkgname}-${pkgver}"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# vim:set ts=2 sw=2 et:
