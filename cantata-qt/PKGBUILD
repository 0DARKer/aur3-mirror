# Contributor: Anton Larionov <diffident dot cat at gmail dot com>


_pkgname=cantata
pkgname="${_pkgname}-qt"
pkgver=0.8.3.1
pkgrel=1
pkgdesc="QT4 client for the music player daemon (MPD) (without kdelibs)"
arch=('i686' 'x86_64')
url="https://code.google.com/p/cantata/"
license=('GPL')
depends=('qtwebkit' 'taglib' 'ffmpeg' 'mpg123' 'phonon')
optdepends=('libmtp: to support MTP devices'
'oxygen-icons: to fill in otherwise missing icons')
makedepends=('cmake' 'automoc4')
provides=('cantata')
conflicts=('cantata')
install=${pkgname}.install
source=("http://cantata.googlecode.com/files/${_pkgname}-${pkgver}.tar.bz2")
md5sums=('bd3bf942fc7aeb54dcfaee40a21f1d02')


build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DENABLE_KDE=NO
  make
  make DESTDIR=${pkgdir} install
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}/build"
  make DESTDIR=${pkgdir} install
}


