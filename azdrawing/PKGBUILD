# Maintainer: katoh <katoh_at_mikage.ne.jp>

pkgname=azdrawing
pkgver=1.3
pkgrel=1
pkgdesc="Painting software for line art and comics."
arch=('i686' 'x86_64')
url="http://hp.vector.co.jp/authors/VA033749/"
license=('GPL3')
depends=('fontconfig' 'freetype2' 'libjpeg-turbo' 'libx11' 'libxext' 'libxft' 'libxi' 'zlib')
makedepends=('make')
source=("http://sourceforge.jp/frs/redir.php?m=jaist&f=%2Fazdrawing%2F60748%2Fazdrawing-1.3-src.tar.bz2")
md5sums=("a2eb41d6ff6a2a745f0a83d98ee7c169")

build() {
    cd "$srcdir/$pkgname-$pkgver/"
    sed -i 's/\/local//' Makefile
	sed -i '2i ifdef DESTDIR\n\tprefix=$(DESTDIR)\/usr\nendif' Makefile
    sed -i 's/axt/axt .\/README .\/NEWS/' Makefile 
    sed -i 's/texture $(datadir)/texture $(datadir)\n\tcp -r .\/help $(datadir)/' Makefile
    make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install
}
