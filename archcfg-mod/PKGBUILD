# Maintainer: simke <goranvaiii@gmail.com>

pkgname=archcfg-mod
pkgver=0.2
pkgrel=1
pkgdesc="Modified and up to date Arch Linux Systemcfg. Some things are removed and add additional support for calling mc and pcurses"
url="http://dl.dropbox.com/u/15144878/archcfg-mod-$pkgver.sh"
depends=()
optdepends=('mc: for file browsing' 'pcurses: for  package management')
source=("http://dl.dropbox.com/u/15144878/archcfg-mod-$pkgver.sh")
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('ecec10199d24f13bb7beeb869a1cb5f7')

build() {
	mkdir -p $pkgdir/usr/bin/
	install -m744 archcfg-mod-$pkgver.sh $pkgdir/usr/bin/archcfg
}
