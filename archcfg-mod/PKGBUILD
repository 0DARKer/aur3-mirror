# Maintainer: simke <goranvaiii@gmail.com>

pkgname=archcfg-mod
pkgver=0.3
pkgrel=1
pkgdesc="Modified Arch Linux Systemcfg. Some things are removed and add added. Aditional support for calling mc and pcurses"
url="http://ompldr.org/vY3pqdQ"
depends=()
optdepends=('mc: for file browsing' 'pcurses: for  package management')
source=("http://dl.dropbox.com/u/15144878/archcfg-mod-$pkgver.sh")
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('62785fe5c42196dce82ddb8ad6be5d83')

build() {
	mkdir -p $pkgdir/usr/bin/
	install -m744 archcfg-mod-$pkgver.sh $pkgdir/usr/bin/archcfg
}
