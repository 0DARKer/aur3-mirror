# Maintainer: simke <goranvaiii@gmail.com>

pkgname=archcfg-mod
pkgver=0.5.5
pkgrel=1
pkgdesc="Arch Linux system configuration script."
url="http://ompldr.org/vZDBhcg"
depends=()
optdepends=('mc: for file browsing')
source=("http://dl.dropbox.com/u/15144878/archcfg-mod-$pkgver.sh")
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('c8e22f2f05b1ec8609a62ad7e5576562')

build() {
	mkdir -p $pkgdir/etc/archcfg/
	mkdir -p $pkgdir/usr/bin/
	install -m755 archcfg-mod-$pkgver.sh $pkgdir/usr/bin/archcfg
}

