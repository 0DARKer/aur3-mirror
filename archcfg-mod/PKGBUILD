pkgname=archcfg-mod
pkgver=0.1
pkgrel=1
pkgdesc="This script important Arch Linux configuration files for editing. Modified."
url="http://opendesktop.org/content/show.php?content=137743"
depends=()
source=("http://dl.dropbox.com/u/15144878/archcfg-mod-$pkgver.sh")
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('5dcfb2479a21363b74dd1a79e8a98c1e')

build() {
	mkdir -p $pkgdir/usr/bin/
	install -m744 archcfg-mod-$pkgver.sh $pkgdir/usr/bin/archcfg-mod
}
