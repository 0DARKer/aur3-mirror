# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-method-signatures-simple
pkgver=1.02
pkgrel=1
pkgdesc="Basic method declarations with signatures, without source filters"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~ruz/HTML-Quoted-$pkgver"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-devel-declare')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/R/RH/RHESA/Method-Signatures-Simple-$pkgver.tar.gz")
md5sums=('92444064d2b369d4427cb4ec6b652855')

build() {
	cd "$srcdir/Method-Signatures-Simple-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Method-Signatures-Simple-$pkgver"
	make install DESTDIR="$pkgdir"
}
