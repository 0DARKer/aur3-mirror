# Maintainer: SanskritFritz (gmail)

pkgname=scduply-git
pkgver=20111126
pkgrel=1
pkgdesc="A duplicity frontend for managing dedicated server backups via configuration files and simple commands."
arch=('any')
url="http://en.skycover.ru/opensource/scduply/"
license=('GPLv2')
depends=('duplicity')
source=()

_gitroot="git://github.com/skycover/scduply.git"
_gitname="scduply"

build() {
  cd "$srcdir"

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
  else
    git clone $_gitroot $_gitname
  fi

  install -Dm755 "${srcdir}/${_gitname}/scduply" "$pkgdir/usr/bin/scduply"
}
