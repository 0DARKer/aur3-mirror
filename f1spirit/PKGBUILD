# Contributor: Tobias Heimfarth <emaildotobias@yahoo.com.br>
pkgname=f1spirit
pkgver=0.rc9.1615
pkgrel=2
pkgdesc="Konami's MSX1 classic F1-Spirit remake"
arch=('i686' 'x86_64')
url="http://www.braingames.getput.com/f1spirit/"
license=("not_found")
depends=('sdl' 'sdl_image' 'sdl_mixer' 'sdl_net' 'curl')
source=(http://braingames.jorito.net/f1spirit/f1spirit.src_0.rc9-1615.tgz)
md5sums=('304935124a1bf48a4de9b39077655fe9')
build() {
cd $startdir/src/$pkgname-$pkgver/
cp build/linux/Makefile ./
make || return 1
make PREFIX=$startdir/pkg/usr BINDIR=$startdir/pkg/usr/share/$pkgname GAMEDIR=$startdir/pkg/usr/bin install || return 1
rm $startdir/pkg/usr/bin/$pkgname
echo "cd /usr/share/$pkgname ; ./f1spirit ; cd -" > $startdir/pkg/usr/bin/$pkgname
chmod 755 $startdir/pkg/usr/bin/$pkgname
}

