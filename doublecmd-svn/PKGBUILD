# Maintainer: Stanislav GE <ginermail@gmail.com>

pkgname=doublecmd-svn
pkgver=3565
pkgrel=1
pkgdesc="Double Commander is a cross platform open source file manager with two panels side by side. It is inspired by Total Commander and features some new ideas."
arch=(i686 x86_64)
url=http://doublecmd.sourceforge.net
license=(GPL2)
makedepends=('lazarus>=0.9.29' 'fpc>=2.2.4' 'subversion')
_svntrunk=http://doublecmd.svn.sourceforge.net/svnroot/doublecmd/trunk
_svnmod=doublecmd

build() {
	# get source
	cd ${srcdir}
	if [ -d $_svnmod/.svn ]; then
		(cd $_svnmod && svn up -r $pkgver)
	else
		svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
	fi
	msg "SVN checkout done or server timeout"
	msg "Starting make..."
	cp -r $_svnmod $_svnmod-build
	cd $_svnmod-build

	# build
	cd ${srcdir}/$_svnmod-build
	./build.sh all
	
	# create doublecmd link to /usr/bin
	prefix=/opt/doublecmd
	mkdir -p $pkgdir/$prefix \
		$pkgdir/usr/bin
	ln -s $prefix/doublecmd $pkgdir/usr/bin/doublecmd

	# install desktop file and icon
	mkdir -p $pkgdir/usr/share/applications \
		$pkgdir/usr/share/pixmaps
	svn export install/linux/doublecmd.desktop $pkgdir/usr/share/applications/doublecmd.desktop
	svn export doublecmd.png $pkgdir/usr/share/pixmaps/doublecmd.png
	
	# install plugins
	for plugin in plugins/wcx/*/lib/*.wcx \
			plugins/wdx/*/lib/*.wdx \
			plugins/wlx/*/lib/*.wlx \
			plugins/dsx/*/lib/*.dsx \
			; do
			# plugins/wfx/*/lib/*.wfx	# ftp plugin isn't built at the moment, so it should be added later
		dest_plugdir=$(echo $pkgdir/$prefix/$plugin|sed 's/\/lib\/[^\/]*/\//')
		mkdir -p $dest_plugdir
		cp $plugin $dest_plugdir
	done
	
	# install bin, docs, misc
	cp doublecmd doublecmd.xml doublecmd.ext.example \
		editor.col pixmaps.txt twilight.col \
		default.bar multiarc.ini \
		$pkgdir/$prefix
	svn export doc $pkgdir/$prefix/doc
	svn export language $pkgdir/$prefix/language
	svn export pixmaps $pkgdir/$prefix/pixmaps
}
