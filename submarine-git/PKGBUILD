# Maintainer: Ondrej Kipila <ok100 at lavabit dot com>

pkgname=submarine-git
_gitname=submarine
pkgver=0.1.3.25.g8ead032
pkgrel=1
pkgdesc="Command-line program for searching and downloading the right subtitles for movies"
arch=('i686' 'x86_64')
license=('LGPL')
url="https://github.com/rastersoft/submarine"
depends=('glib2' 'libgee06' 'libsoup' 'libarchive')
makedepends=('vala' 'git')
optdepends=('imagemagick: for external commands'
			'libjpeg-turbo: for external commands'
			'gimp: open with')
provides=('submarine')
conflicts=('submarine')
source=("git+https://github.com/rastersoft/submarine.git")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"
  git describe --always | sed -e 's|-|.|g'
}

build() {
	cd "${srcdir}/${_gitname}"

    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package() {
	cd "${srcdir}/${_gitname}"
  	make DESTDIR="${pkgdir}" install
} 
