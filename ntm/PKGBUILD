#Maintainer: Mamut Ghiunhan <venerix at gmail dot com>
pkgname='ntm'
pkgver='1.2.2'
pkgrel='3'
pkgdesc="Monitor of the network and internet traffic"
arch=('i686' 'x86_64')
license=('GPL')
depends=('pywebkitgtk' 'python-notify' 'lsb-release' 'networkmanager')
makedepends=('')
url=('http://netramon.sourceforge.net/eng/index.html')
source=('http://freefr.dl.sourceforge.net/project/netramon/NTM/ntm-1.x/ntm-1.2.2.deb')
md5sums=('ec438b8c952ac866ffdaa57538d189b7')

build() {
  cd "$srcdir"

  # Extracting deb
  ar -x ntm-*.deb
  tar zxvf $srcdir/data.tar.gz -C $pkgdir
  sed -i "s|python|python2|g" $pkgdir/usr/share/ntm/run_ntm.sh 
}
