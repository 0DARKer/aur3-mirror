# Contributor: Xyne <xyne at archlinux dot us>

pkgname=xvidtune
pkgver=1.0.1
pkgrel=2
pkgdesc='A screen adjustment tool.'
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/xorg/app/xvidtune/"
depends=("libxaw")
license="GPL"
source=(http://xorg.freedesktop.org/releases/individual/app/${pkgname}-${pkgver}.tar.bz2)
md5sums=('e0744594f4e5969b20df28d897781318')

build() {
  cd $srcdir/$pkgname-$pkgver || return 1
  ./configure --prefix=/usr --exec-prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
