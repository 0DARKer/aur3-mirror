# Maintainer: Michael Lass <bevan@bi-co.net>

pkgname=openafs-modules-dkms
_srcname=openafs
pkgver=1.6.10
pkgrel=5
pkgdesc="Kernel module for OpenAFS (dkms)"
arch=('i686' 'x86_64')
url="http://www.openafs.org"
license=('custom:"IBM Public License Version 1.0"')
depends=('dkms' 'openafs')
provides=("openafs-modules=$pkgver")
conflicts=('openafs-features-libafs' 'openafs-modules' 'openafs<1.6.6-2')
options=(!emptydirs)
source=(http://openafs.org/dl/openafs/${pkgver}/${_srcname}-${pkgver}-src.tar.bz2
        dkms.conf
        0001-Linux-3.17-No-more-typedef-for-ctl_table.patch
        0002-Linux-3.17-Deal-with-d_splice_alias-errors.patch
        0003-Linux-3.18-d_invalidate-can-no-longer-return-an-erro.patch
        0004-Linux-3.18-key_type-no-longer-has-a-match-op.patch
        0005-LINUX-Avoid-check-for-key_type.match-existence.patch
        0006-Linux-Move-code-to-reset-the-root-to-afs-LINUX.patch
        0007-Linux-d_alias-becomes-d_u.d_alias.patch
        0008-Linux-3.19-No-more-f_dentry.patch
        0009-Linux-3.19-Use-mgs_iter-in-struct-msghdr.patch
        0010-Linux-3.19-struct-nameidata-becomes-opaque.patch
        0011-Linux-d_splice_alias-may-drop-inode-reference-on-err.patch)
install=openafs-modules-dkms.install
sha256sums=('09b3c4f9500107c6e1cb737a5642e50f338d6acb0579e5e03c772cba1c6f1276'
            'e04322d7210df3029906ea8df27c71839c419cde40473dc88544313fda3991cc'
            'c5fdacfb0675f508d69a85829c109b0e01c704f752e1d658885e3dda7416b3e0'
            '0575f250809984b02907982c0eb8422e7f842f4470ce02ad9b49cdd6d47362d4'
            '20cd4dba92d5d95fdf5ba421366fd5bdd04d956e9b57d0eaa28c01359a4fb977'
            '63b1acaadaca950b189614146b9b9ba750d4c02cde0dfcabf7a81f2d49d64437'
            'd942957e4a317d06c2df10a5e798386f1d8767e9d7ed65a6926093e4eee8e391'
            '82f15ad570145b5ac9460a40ba1e2968fcb2ddf3ba494fcdaad30f183b8e912a'
            '321eb715b3fb63370d66cc8503db8bc4274503ce024c6c41fdfd89af1ea86bd4'
            '09a5ba6143d60c1d9fad79911a1726e64962a270852f2804e698177bd1385694'
            '753074028982c32cb50edcd9c75a0b4555be8e26fc8e558d19578cd1a28d7074'
