pkgname=lua-sqlite3
pkgver=0.4.1
pkgrel=1
pkgdesc="Lua-Sqlite3 is a binding of Sqlite3 for Lua."
arch=('i686' 'x86_64')
url="http://www.mroth.net/lua-sqlite3/"
license=('N/A')
depends=('lua' 'sqlite3')
makedepends=('scons')
provides=('lua-sqlite3')
install=

source=('http://www.mroth.net/lua-sqlite3/lua-sqlite3-0.4.1.tar.bz2')

md5sums=('eb14c0b5c4bf8e0052dc2d054386717a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure || return 1
  make DESTDIR=${pkgdir} install || return 1
}
# vim:syntax=sh
