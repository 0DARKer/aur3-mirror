# Maintainer: Viliam Pucik <viliam.pucik@gmail.com>

pkgname=palm-novacom-lite
_pkgname=palm-novacom
pkgver=1.0.64
pkgrel=1
pkgdesc="Palm's debug/control protocol server."
url="http://developer.palm.com/index.php"
arch=('i686' 'x86_64')
license=('unknown')
conflicts=('palm-novacom')

# novacomd does not run correctly with default Arch Linux libusb
if [[ "${CARCH}" = "x86_64" ]]; then
    source=(https://cdn.downloads.palm.com/sdkdownloads/2.1.0.519/sdkBinaries/${_pkgname}_${pkgver}_amd64.deb
            http://mirror.ovh.net/ubuntu/pool/main/libu/libusb/libusb-0.1-4_0.1.12-15ubuntu2_amd64.deb
            'novacomd'
            'novacomd-conf.d')
    noextract=(${_pkgname}_${pkgver}_amd64.deb libusb-0.1-4_0.1.12-15ubuntu2_amd64.deb)
    md5sums=('a4735e37071459a9bce7fca115729445'
             'c1a7aa82edfb7e871bc6d96a70fa3ede'
             'df9b1bc4f4d60301f933a52afbf796cb'
             'b99bd22ff41108b78ba3a74fa768f5ff')
else
    source=(https://cdn.downloads.palm.com/sdkdownloads/2.1.0.519/sdkBinaries/${_pkgname}_${pkgver}_i386.deb
            http://mirror.ovh.net/ubuntu/pool/main/libu/libusb/libusb-0.1-4_0.1.12-13_i386.deb
            'novacomd'
            'novacomd-conf.d')
    noextract=(${_pkgname}_${pkgver}_i386.deb libusb-0.1-4_0.1.12-13_i386.deb)
    md5sums=('33d8091c4798dcacc322c22dade116a4'
             '280dc749f0e0efa9594b6a7a3a3ec56f'
             'df9b1bc4f4d60301f933a52afbf796cb'
             'b99bd22ff41108b78ba3a74fa768f5ff')
fi

build() {
    cd "${srcdir}"

    install -Dm 0755 "${srcdir}"/novacomd        "${pkgdir}"/etc/rc.d/novacomd
    install -Dm 0644 "${srcdir}"/novacomd-conf.d "${pkgdir}"/etc/conf.d/novacomd

    ar x ${_pkgname}_${pkgver}_*.deb
    tar zxvf data.tar.gz -C "${srcdir}"
    install -dm 0755 -p "${pkgdir}"/opt/Palm/novacom
    install -m  0755 "${srcdir}"/opt/Palm/novacom/novacom  "${pkgdir}"/opt/Palm/novacom
    install -m  0755 "${srcdir}"/opt/Palm/novacom/novacomd "${pkgdir}"/opt/Palm/novacom
    install -m  0755 "${srcdir}"/opt/Palm/novacom/novaterm "${pkgdir}"/opt/Palm/novacom
    install -dm 0755 -p "${pkgdir}"/usr/bin
    ln -s /opt/Palm/novacom/novacom "${pkgdir}"/usr/bin/novacom
    ln -s /opt/Palm/novacom/novaterm "${pkgdir}"/usr/bin/novaterm

    ar x libusb-0.1-4*.deb
    tar zxvf data.tar.gz -C "${srcdir}"
    install -m  0644 "${srcdir}"/lib/libusb-0.1.so.4       "${pkgdir}"/opt/Palm/novacom
}

