_pkgsourcename=gcc
#_pkgsourcerel=5.1
#pkgname=lib32-$_pkgsourcename-archs - unable to upload to aur with this
pkgname=lib32-gcc-archs
pkgver=4.4.2
pkgrel=4
pkgdesc="The GNU Compiler Collection i686 archives for x86_64 dirty 32bit compilation"
arch=('x86_64')
url="http://gcc.gnu.org"
license=('GPL' 'LGPL')
depends=('lib32-glibc')
groups=('lib32')
source=(ftp://ftp.archlinux.org/core/os/i686/gcc-4.4.2-4-i686.pkg.tar.gz)
md5sums=('663b2877c6b26ea4aba142460133ff65')

build() {
#	mkdir -p $pkgdir/opt/lib32/usr/lib/gcc/i686-pc-linux-gnu/$pkgver
	install -dm755 $pkgdir/opt/lib32/usr/lib/gcc/i686-pc-linux-gnu/$pkgver
	cp -dp $srcdir/usr/lib/gcc/i686-pc-linux-gnu/$pkgver/*.a $pkgdir/opt/lib32/usr/lib/gcc/i686-pc-linux-gnu/$pkgver
}
