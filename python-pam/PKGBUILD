# Maintainer : kozec <kozec at kozec dot com>
pkgname=python-pam
pkgver=0.1.3
pkgrel=1
pkgdesc="Module that provides an authenticate function that allows the caller to authenticate a given username / password against the PAM system on Linux."
url="http://atlee.ca/software/pam/"
license=('MIT')
arch=('i686' 'x86_64')
depends=('python2' 'pam')
conflicts=()
replaces=()
backup=()
source=("http://atlee.ca/software/pam/dist/$pkgver/pam-$pkgver.tar.gz")
md5sums=('9a64e9220414dd21a6d82cb0f0371fd5')

build() {
	cd $srcdir/pam-$pkgver
	python2 setup.py build
	python2 setup.py install --root=$startdir/pkg
	}
