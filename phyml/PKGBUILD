# Maintainer: Michael Schubert <mschu.dev at gmail>
# Contributor: Mick Elliot <micke at sfu dot ca>

pkgname=phyml
pkgver=20130219
_basever=20120412
pkgrel=1
pkgdesc="Builds phylogenies from DNA or protein sequences using a maximum likelihood approach"
arch=('i686' 'x86_64')
url="https://code.google.com/p/phyml/"
license=('GPLv2')
source=("https://phyml.googlecode.com/files/phyml-$_basever.tar.gz"
        "https://phyml.googlecode.com/files/$pkgver.patch")
sha1sums=('8a4699ad2bba7e2f76c8eefa277d29290f92071c'
          'fec5b9161e9b5a0276445c86d70bf1758978928e')

build() {
  cd "$srcdir/phyml-$_basever"
  patch -p0 --strip 2 < "$srcdir/$pkgver.patch"
  aclocal
  autoconf -f
  automake -f
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/phyml-$_basever"
  make DESTDIR="$pkgdir" install
}

