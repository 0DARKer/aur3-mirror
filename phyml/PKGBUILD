# Maintainer: Mick Elliot <micke at sfu dot ca>
# Contributor: Mick Elliot <micke at sfu dot ca>

pkgname=phyml
pkgver=2.4.4
origver=2.4.4
pkgrel=1
pkgdesc="Builds phylogenies from DNA or protein data using maximum likelihood"
arch=('i686' 'x86_64')
url="http://atgc.lirmm.fr/phyml/"
license=('custom')
source=(http://www.sfu.ca/~micke/arch/phyml/phyml http://www.sfu.ca/~micke/arch/phyml/usersguide.tar.gz license)
md5sums=('463c7510ecd76a0d823864aa8a82517b' '8ef0646fc92efada582ad7c7da31290a' '9d858516628a739b78b9e102e5486759')
build() {
  cd $startdir/src/
  install -D -m755 phyml $startdir/pkg/usr/bin/phyml
  install -D -m644 license $startdir/pkg/usr/share/licenses/$pkgname/license
  mkdir -p $startdir/pkg/usr/share/doc/$pkgname
  cp -R usersguide/* $startdir/pkg/usr/share/doc/$pkgname/
}
