# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=nullshell
pkgver=0.0.3
pkgrel=1
pkgdesc="do nothing but print keep alive characters, can be used for login shell"
arch=('i686' 'x86_64')
makedepends=('markdown')
url="https://github.com/eworm-de/nullshell"
conflicts=('nullshell-git')
license=('GPL')
install=nullshell.install
source=("http://www.eworm.de/download/linux/${pkgname}-${pkgver}.tar.xz"{,.asc})
sha256sums=('SKIP'
            'SKIP')

build() {
	cd ${pkgname}-${pkgver}/

	make
}

package() {
	cd ${pkgname}-${pkgver}/

	make DESTDIR="${pkgdir}" install
}

