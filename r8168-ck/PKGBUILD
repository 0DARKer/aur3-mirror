# Contributor: Filip <fila pruda com>, Det < nimetonmaili(at)gmail >

pkgname=r8168-ck
_realname=r8168
pkgver=8.028.00
pkgrel=2
pkgdesc="A kernel module for Realtek 8168 network cards (for linux-ck kernel)"
url="http://www.realtek.com.tw"
license=("GPL")
arch=('i686' 'x86_64')
depends=('glibc' 'linux-ck>=3.2' 'linux-ck<3.3')
makedepends=('linux-ck-headers')
source=(http://r8168.googlecode.com/files/$_realname-$pkgver.tar.bz2)
install=$_realname.install

_extramodules=extramodules-3.2-ck
_kernver="$(cat /lib/modules/$_extramodules/version || true)"

build() {
	cd "$srcdir/$_realname-$pkgver"
	make clean SYSSRC=/usr/src/linux-$_kernver modules
}

package() {
	cd "$srcdir/$_realname-$pkgver/src"
	install -D -m644 $_realname.ko "$pkgdir/lib/modules/$_extramodules/$_realname.ko"
	find "$pkgdir" -name '*.ko' -exec gzip -9 {} \;
}

md5sums=('4cc3c1706f00b55ab9bd6f5e06b758c2')
sha256sums=('c77873f43693eea5304e17e35ff3d6503f6581e358d28c38927573ea56f4d6a3')
