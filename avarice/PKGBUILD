# Maintainer: Laszlo Papp <djszapi2 at gmail com>
arch=('i686')
pkgname=avarice
license=('GPL')
pkgver=2.10
pkgrel=3
pkgdesc="Tool for debugging AVR devices via JTAG with gdb"
url="http://sourceforge.net/projects/avarice/"
depends=('libusb' 'perl')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2
    jtag2usb.patch)
md5sums=('cde811ce9e6739b680b4662d79b05d0e'
         'f2c57032112b6024979d6ac71e5cbf08')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  patch -p0 < ../jtag2usb.patch
  ./configure --prefix=${pkgdir}/usr
  make || return 1
  make install || return 1
}

