# Contributor: pressh <pressh at gmail dot com>

pkgname=xscrabble
pkgver=2.12
pkgrel=2
pkgdesc="An X11 clone of the well-known Scrabble."
arch=('i686' 'x86_64')
depends=('libxaw' 'libxp')
makedepends=('imake')
url="http://hpux.cs.utah.edu/hppd/hpux/Games/Board/xscrabble-2.10/"
license=('GPL')
install=xscrabble.install
source=(ftp://ftp.ac-grenoble.fr/ge/educational_games/$pkgname-$pkgver.tar.bz2)
md5sums=('733e90def2c1d60c0c223f3a0c908db9')

build() {
  mkdir -p $startdir/pkg/usr/bin
  cd $startdir/src/$pkgname-$pkgver
  ./build bin
  install -c -s src/xscrab $startdir/pkg/usr/bin
  install -c -s src/xscrabble $startdir/pkg/usr/bin
  
  # put the correct files in the config file and install it
  sed -i 's/usr\/share\/games\/scrabble/usr\/share\/xscrabble/' XScrabble
  install -Dm644 XScrabble $startdir/pkg/usr/share/X11/app-defaults/XScrabble
 
}
