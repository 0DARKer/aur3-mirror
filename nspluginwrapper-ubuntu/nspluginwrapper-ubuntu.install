post_install() {
  echo '>>> To reinstall the wrapper plugin, run:'
  echo '>>>   nspluginwrapper -r $HOME/.mozilla/plugins/* ; nspluginwrapper -v -a -i'
  echo '>>> Konqueror users need to add $HOME/.mozilla/plugins/ to its plugins path.'
}

post_upgrade() {
  post_install $1
}

op=$1
shift
$op $*
