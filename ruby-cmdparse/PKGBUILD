# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-cmdparse
_gemname=${pkgname#ruby-}
pkgver=2.0.3
pkgrel=1
pkgdesc="Advanced command line parser supporting commands."
arch=('any')
url="http://cmdparse.rubyforge.org"
license=('GPL')
depends=('ruby' 'rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('82cafe4708240351718efff87c29a593')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${_gemname}-${pkgver}.gem
}
