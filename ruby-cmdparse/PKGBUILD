# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-cmdparse
pkgver=2.0.3
pkgrel=1
pkgdesc="Advanced command line parser supporting commands."
arch=(any)
url="http://cmdparse.rubyforge.org/"
license=('GPL')
depends=('ruby')
source=(http://gems.rubyforge.org/gems/cmdparse-$pkgver.gem)
noextract=(cmdparse-$pkgver.gem)
md5sums=('82cafe4708240351718efff87c29a593')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" cmdparse-$pkgver.gem
}
