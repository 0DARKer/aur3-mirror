pkgname=trytond-purchase
_pkgname=trytond_purchase
pkgver=2.4.0
_pkgdir=2.4
pkgrel=1
pkgdesc="The purchase module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.4' 'trytond-company>=2.2' 'trytond-party>=2.2' 'trytond-stock>=2.2' 'trytond-account>=2.2' 'trytond-product>=2.2' 'trytond-account_invoice>=2.2' 'trytond-currency>=2.2' 'trytond-account_product>=2.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("8767997b06f8a4467a59e42fb7057ef5")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir
}