pkgname=python-polygon
pkgver=3.0.4a
_pkgver=3.0.4
pkgrel=1
pkgdesc="Python package that handles polygonal shapes in 2D"
arch=('i686' 'x86_64')  # compiles gpc, can't be 'any'
url="http://www.j-raedler.de/projects/polygon/"
depends=('python2')
license=('LGPL' 'custom')
options=(!libtool)
source=(https://github.com/downloads/jraedler/Polygon3/Polygon-$pkgver-src.zip)
md5sums=('23532c2cd4478f884b00759cdd2ede15')

package() {
    cd "$srcdir/Polygon-$_pkgver"
    python setup.py install --prefix=/usr --root="$pkgdir" --optimize=0
}

