# Contributor: zlowly <zlowly@gmail.com>
pkgname=gmbox
pkgver=0.4a
_pkgver=0.4-alpha
_pkgname=$pkgname
pkgrel=1
pkgdesc="Google music box"
arch=("i686" "x86_64")
url="http://code.google.com/p/gmbox/"
license=('GPL3')
depends=('python2>=2.6' 'pygtk' 'python-notify')
source=(http://gmbox.googlecode.com/files/$pkgname-${_pkgver}.zip
gmbox.desktop)
md5sums=('008f2d7ca500f15881413a01d22ee5ea'
         '43b279f196398978bae4bfd6388d5eb2')

build() {
  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/gmbox/pixbufs
  install -m 0644 $srcdir/$_pkgname/pixbufs/* $pkgdir/usr/share/gmbox/pixbufs
  install -m 0755 $srcdir/$_pkgname/*.py $pkgdir/usr/share/gmbox/
  install -m 0644 $srcdir/$_pkgname/gmbox.glade $pkgdir/usr/share/gmbox/
  install -Dm 0644 $srcdir/$_pkgname/pixbufs/gmbox.png $pkgdir/usr/share/pixmaps/gmbox.png
  install -Dm 0644 $srcdir/gmbox.desktop $pkgdir/usr/share/applications/gmbox.desktop
}

# vim:set ts=2 sw=2 et:
