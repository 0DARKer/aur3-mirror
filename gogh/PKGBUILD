pkgname=gogh
pkgver=0.1.2.3
pkgrel=3
pkgdesc="Bitmap graphics editor designed to work with pressure-sensitive input devices."
arch=('any')
url="http://code.google.com/p/gogh/"
license=('GPL')
depends=('python2' 'pygtk' 'gnome-python' 'pyxml' 'python-numeric')
source=("http://gogh.googlecode.com/files/Gogh-$pkgver.tar.gz")
md5sums=('2a387934f9003f923919cd378b5bbbd1')

build() {
  cd "$srcdir/Gogh-$pkgver"
  python2 setup.py install --prefix="$pkgdir/usr/" || return 1
  mkdir -p "$pkgdir/usr/lib/python2.7/site-packages"
  cp -R brushlist.xml glade "$pkgdir/usr/lib/python2.7/site-packages/" || return 1
  cp -R *.py "$pkgdir/usr/lib/python2.7/site-packages/" || return 1
}
