pkgname=ucview
pkgver=0.31
pkgrel=1
pkgdesc="A video image capture application that uses the unicap toolkit."
arch=('i686' 'x86_64')
url="http://unicap-imaging.org"
license=('GPL')
depends=('libunicapgtk' 'libglade' 'gconf' 'hicolor-icon-theme')
makedepends=('intltool' 'perlxml')
install=ucview.install
source=(http://www.unicap-imaging.org/downloads/$pkgname-$pkgver.tar.gz ucview-window.patch)
md5sums=('b36fd5c54cb200f9917abedd5469bb94' '11555f7012c6f7e0912e16d1ffb0c928')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p0 -i ../ucview-window.patch
  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install
}
