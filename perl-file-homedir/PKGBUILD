pkgname='perl-file-homedir'
pkgver='0.91'
pkgrel='1'
pkgdesc="Find your home and other directories, on any platform"
arch=('any')
url='http://search.cpan.org/dist/File-HomeDir'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-file-which')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/File-HomeDir-0.91.tar.gz')
md5sums=('91a7a14aed6c983a3530e4e0b6964dc2')

build() {
  DIST_DIR="${srcdir}/File-HomeDir-0.91"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

