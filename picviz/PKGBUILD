pkgname=picviz
pkgver=0.5
pkgrel=1
pkgdesc="Picviz allows you to graph data from various sources (e.g. tcpdump, syslog, etc.)." 
arch=(i686)
url="http://www.wallinfire.net/picviz"
license=('GPL')
depends=()
makedepends=('cairo' 'libevent' 'pcre' 'cmake')
source=(http://www.wallinfire.net/picviz/attachment/wiki/ReleasesDownload/picviz-0.5.tar.gz?format=raw)
md5sums=(b0f814e23e8eac186a752e9e52f382d0)

build() {
  cd $srcdir/$pkgname-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
