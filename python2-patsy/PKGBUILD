pkgname=python2-patsy
pkgver=0.1.0
pkgrel=1
pkgdesc="A Python package for describing statistical models and building design matrices"
arch=('any')
url="https://github.com/pydata/patsy"
license=('BSD')
depends=('python2' 'python2-numpy')
makedepends=( )
provides=('python2-patsy')
source=("https://pypi.python.org/packages/source/p/patsy/patsy-${pkgver}.tar.gz")
md5sums=('3bac8ee49d6a9a208fca4292e5f9a9ab')

package() {
  cd "$srcdir/patsy-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

