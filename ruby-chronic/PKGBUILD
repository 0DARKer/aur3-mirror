# Contributor: gem2arch 0.1
pkgname=ruby-chronic
pkgver=0.2.3
_realname="chronic"
pkgrel=1
pkgdesc="A natural language date parser"
arch=(any)
url="http://chronic.rubyforge.org/"
license=("GPL")
depends=('ruby')
source=(http://gems.rubyforge.org/gems/chronic-$pkgver.gem)
noextract=(chronic-$pkgver.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_realname}-$pkgver.gem
}
md5sums=('e4496710d1f012c343fdea254c4b5827')
