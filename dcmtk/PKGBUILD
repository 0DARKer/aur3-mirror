pkgname=dcmtk
pkgver=3.6.0
pkgrel=1
pkgdesc="a collection of libraries and applications implementing large parts the DICOM standard"
arch=(i686 x86_64)
url="http://dicom.offis.de/dcmtk"
license=('other')
depends=('zlib' 'libpng' 'libtiff' 'libxml2' 'openssl')
source=(ftp://dicom.offis.de/pub/dicom/offis/software/dcmtk/dcmtk360/$pkgname-${pkgver}.tar.gz)
md5sums=('19409e039e29a330893caea98715390e')

build() {
  cd $srcdir/$pkgname-${pkgver}
  ./configure --prefix=/usr/
  make || return 1
  make DESTDIR=$pkgdir install
  make DESTDIR=$pkgdir install-lib
  export DCMDICTPATH="/usr/lib/dicom.dic"
  echo 'You will need to execute export DCMDICTPATH=/usr/lib/dicom.dic after this installation to make the binaries work'
}