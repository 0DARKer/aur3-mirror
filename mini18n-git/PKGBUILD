# Maintainer: Gustavo alvarez <sl1pkn07@gmail.com>

pkgname=mini18n-git
pkgver=20140214.4c74956
pkgrel=1
pkgdesc="A a small and non-intrusive translation library designed for small memory and non-GNU systems. (GIT version)"
arch=('x86_64' 'i386')
url="http://wiki.yabause.org/index.php5?title=Mini18n"
license=('GPL')
depends=('glibc')
makedepends=('git' 'cmake')
conficts=('mini18n')
provides=('mini18n')
source=("git+https://github.com/Guillaumito/yabause.git")
md5sums=('SKIP')
_gitname="mini18n"

pkgver() {
  cd yabause
  echo "$(git log -1 --format="%cd" --date=short | tr -d '-').$(git log -1 --format="%h")"
}

build() {
  cd "yabause/${_gitname}"
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  make -C "yabause/${_gitname}" DESTDIR="${pkgdir}/" install
}

