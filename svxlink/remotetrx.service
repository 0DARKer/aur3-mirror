[Unit]
Description=Echolink Software Remotetrx
After=network.target
After=sound.target

[Service]
Type=forking
EnvironmentFile=/etc/default/svxlink
ExecStart=/bin/su -s /bin/bash -l -c "/usr/bin/remotetrx --daemon --pidfile=${PIDFILE} --logfile=${LOGFILE} --config=${CFGFILE} --runasuser=${RUNASUSER}"
Restart=always
PIDFile=/run/svxlink-remotetrx.pid

[Install]
WantedBy=multi-user.target
