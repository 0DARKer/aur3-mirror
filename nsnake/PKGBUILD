# Maintainer: Lucas de Sena <lucas.ta23@gmail.com>
# Developer: Alexandre Dantas <alex.dantas92@gmail.com>

pkgname=nsnake
pkgver=1.5
pkgrel=3
pkgdesc="A snake game clone with nCurses for console"
arch=('i686' 'x86_64')
url="http://alexdantas.net/projects/nsnake/"
license=('GPL')
depends=('ncurses')
changelog="ChangeLog"
source=($pkgname-$pkgver.tar.gz)
md5sums=('f8988b2dfb88853941d2f8bdcde0b780')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" PREFIX="$pkgdir/usr" install
  rm -rf $pkgdir/var
}

# vim:set ts=2 sw=2 et:
