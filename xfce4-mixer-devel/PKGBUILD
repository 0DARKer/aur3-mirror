# Maintainer twa022 <twa022@gmail.com>

pkgname=xfce4-mixer-devel
pkgver=4.6.1
pkgrel=1
pkgdesc="The volume control plugin for Xfce panel (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=("xfce4-panel-devel>=$pkgver" 'gstreamer0.10-base>=0.10.21' 'hicolor-icon-theme')
makedepends=('pkgconfig')
conflicts=('xfce4-mixer')
provides=("xfce4-mixer=${pkgver}")
options=('!libtool')
install=xfce4-mixer.install
source=(http://www.xfce.org/archive/xfce-${pkgver}/src/xfce4-mixer-${pkgver}.tar.bz2)
md5sums=('a99e2455445480ef5081fe69454a46fc')

build() {
  cd ${srcdir}/xfce4-mixer-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib \
    --localstatedir=/var --disable-static \
    --with-sound=alsa || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
