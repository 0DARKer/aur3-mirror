pkgname='perl-utf8-all'
pkgver='0.010'
pkgrel='1'
pkgdesc="turn on Unicode - all of it"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-dist-checkconflicts>=0.02' 'perl-import-into')
makedepends=('perl-test-fatal' 'perl-test-warn')
url='http://search.cpan.org/dist/utf8-all'
source=('http://search.cpan.org/CPAN/authors/id/D/DO/DOHERTY/utf8-all-0.010.tar.gz')
md5sums=('159ac1b5f6b4a8daae35fcf4fed2f794')
sha512sums=('7dc77f03ced0824eff4f1a6fc922557b601990cd7ae91e16c6fbb0573dc867c9f15152e985797676e0e9d18248a117464df49edd640030d2bbaac5e77a8b0b17')
_distdir="utf8-all-0.010"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

