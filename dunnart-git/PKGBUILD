# Maintainer: Michael Schubert <mschu.dev at gmail>

pkgname=dunnart-git
pkgver=20130213
pkgrel=1
pkgdesc="A constrained-based diagram editor"
arch=('i686' 'x86_64')
url="http://www.csse.monash.edu.au/~mwybrow/dunnart/"
license=('GPL')
depends=('qt')
makedepends=('git')
provides=('adaptagrams-git')
conflicts=('adaptagrams-git')
_gitroot=("git://github.com/mjwybrow/dunnart.git")
_gitname=("dunnart")

build() {
  cd "$srcdir"

  if [ -d $srcdir/$_gitname ] ; then
    msg "Git checkout:  Updating existing tree"
    cd $_gitname && git pull origin
    msg "Git checkout:  Tree has been updated"
  else
    msg "Git checkout:  Retrieving sources"
    git clone $_gitroot
  fi
  msg "Checkout completed"

  cd "$srcdir/$_gitname"
  qmake -recursive -config release dunnart.pro
  make
}

package() {
  cd "$srcdir/$_gitname"

  for FILE in $(find lib* -name "*.h"); do
    install -Dm644 $FILE "$pkgdir/usr/include/$FILE"
  done

  cd build

  for FILE in $(find . -name "*.so*"); do
    install -Dm755 $FILE "$pkgdir/usr/lib/dunnart/$FILE"
  done
  for FILE in $(find . -maxdepth 1 -name "*.so*"); do
    ln -s "/usr/lib/dunnart/$FILE" "$pkgdir/usr/lib/$FILE"
  done
  install -Dm755 Dunnart "$pkgdir/usr/lib/dunnart/Dunnart"

  for FILE in $(find . -name "*.png*"); do
    install -Dm644 $FILE "$pkgdir/usr/share/dunnart/$FILE"
  done

  mkdir -p "$pkgdir/usr/bin"
  cat > "$pkgdir/usr/bin/Dunnart" <<- EOF
  #!/bin/sh
  cd /usr/lib/dunnart
  ./Dunnart
EOF
  chmod 755 "$pkgdir/usr/bin/Dunnart"
}
