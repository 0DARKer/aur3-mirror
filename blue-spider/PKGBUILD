# Maintainer: Jaume Delclòs <jaume@delclos.com>
pkgname=blue-spider
pkgver=r102.51fd46c
pkgrel=1
pkgdesc="A map editor for Pokémon GBA ROMs"
arch=(any)
url="https://github.com/cosarara97/blue-spider"
license=('GPL')
depends=('python' 'python-pillow' 'python-pyqt4')
makedepends=('git')
options=(!emptydirs)
source=('blue-spider::git+https://github.com/cosarara97/blue-spider.git')
md5sums=(SKIP)

package() {
  cd "$srcdir/$pkgname"
  python setup.py install --no-freeze --root="$pkgdir/" --optimize=1
}

pkgver() {
  cd "$srcdir/repo"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

# vim:set ts=2 sw=2 et:
