# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=danbooru-client-git
pkgver=1.1.5.gd8dcda7
pkgrel=1
pkgdesc="Application to access Danbooru-based image boards (GIT Version)"
url="http://www.dennogumi.org/projects/danbooru-client"
arch=('any')
license=('GPL2')
depends=('python-pyqt4' 'kdebase-lib' 'kdebindings-python')
makedepends=('git')
conflicts=('danbooru-client')
source=("git://github.com/lbeltrame/danbooru-client.git")
md5sums=('SKIP')
_gitname="danbooru-client"

pkgver() {
  cd "${_gitname}"
  echo "$(git describe --long --tags | tr - .)"
}

build() {
  cd "${_gitname}"
  cmake -DCMAKE_INSTALL_PREFIX="$(kde4-config --prefix)"
  make
}

package() {
  make -C "${_gitname}" DESTDIR="${pkgdir}" install
}