# Note: this package is for python 2

pkgname=python-augeas
pkgver=0.4.1
pkgrel=1
pkgdesc="Python bindings for the augeas configuration tool"
arch=('any')
license=('LGPL2')
url="http://augeas.net"
depends=('python2' 'augeas')
makedepends=()
options=()
source=(https://fedorahosted.org/released/python-augeas/$pkgname-$pkgver.tar.gz)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1
}

md5sums=('cf5742a6e84c1cc894cedd1984aaa915')
