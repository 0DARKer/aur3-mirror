pkgname=verbiste
pkgver=0.1.32
pkgrel=1
pkgdesc="Generates conjugations of french verbs"
url="http://sarrazip.com/dev/verbiste.html"
license="GPL"
depends=('libxml2' 'gtk2')
makedepends=('pkgconfig' 'perlxml')
arch=('i686' 'x86_64')
source=("http://perso.b2b2c.ca/sarrazip/dev/$pkgname-$pkgver.tar.gz")
md5sums=('b39769beb4914a0e7275574b7f939245')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --with-gtk-app
# ./configure --prefix=/usr # console support only
  make || return 1
  make DESTDIR=$startdir/pkg install

  # Modify location for .desktop file
  install -D -m644 $startdir/src/$pkgname-$pkgver/src/gnome/verbiste.desktop \
  $startdir/pkg/usr/share/applications/verbiste.desktop
  ( cd $startdir/pkg/usr/share/applications/
  sed -e 's/Exec=verbiste/Exec=verbiste-gtk/g' -i verbiste.desktop )
}
