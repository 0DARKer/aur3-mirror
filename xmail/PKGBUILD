# Maintainer: Ivan Morales  <imorales at sismanet dot com>

pkgname=xmail
pkgver=1.26
pkgrel=1
pkgdesc="XMail SMTP/POP3 server"
arch=('i686' 'x86_64')
url="http://www.xmailserver.org/"
license=('GPL')
depends=('openssl')
makedepends=('openssl')
source=(http://www.xmailserver.org/$pkgname-$pkgver.tar.gz)
md5sums=('26d35c2fc104d79ebb6397c7dece5b15')

build() {
  cd $srcdir/$pkgname-$pkgver
  make -f Makefile.lnx || return 1
  
  # Copy the files to /var/MailRoot
  cp -r MailRoot /var
  chmod 700 /var/MailRoot
  cp -r bin /var/MailRoot

  # Copy sysv init file
  cp xmail /etc/rc.d
   
}

