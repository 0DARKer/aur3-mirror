# Maintainer: Nicolas Cornu <ncornu@aldebaran-robotics.com>
pkgname=covim-git
pkgver=.
pkgrel=1
pkgdesc="CoVim plugin for vim."
arch=('any')
url="https://github.com/FredKSchott/CoVim"
depends=('gvim')
makedepends=('git')
provides=('covim')
license=('custom')
_gitroot="git+https://github.com/FredKSchott/CoVim.git"
_gitname="covim"
source=($_gitname::$_gitroot)
sha1sums=('SKIP')

pkgver() {
  cd ${srcdir}
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd ${srcdir}
  install -d ${pkgdir}/usr/share/vim/vim73/plugin
  install covim/plugin/* ${pkgdir}/usr/share/vim/vim73/plugin
  install -d  ${pkgdir}/usr/share/vim/vim73/doc
  install covim/doc/CoVim.txt ${pkgdir}/usr/share/vim/vim73/doc
}
