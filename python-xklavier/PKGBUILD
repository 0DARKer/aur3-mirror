pkgname=python-xklavier
pkgver=0.3
pkgrel=1
pkgdesc="Python Bindings for libxklavier."
arch=('i686' 'x86_64')
url="http://www.sugarlabs.org/"
license=('GPL')
depends=('libxklavier>=5.0' 'pygobject>=2.6.2' 'gtk2')
source=(http://devel.randomink.org/attachments/download/4/${pkgname}-${pkgver}.tar.gz)
md5sums=('082716ef05dbb37eb9c4fab12c84c813')
options=('!libtool')
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

