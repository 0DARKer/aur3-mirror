# Maintainer: Sergej Pupykin <realitygaps AT yahoo DOT com>

pkgname=civicrm
pkgver=3.1.1
pkgrel=1
pkgdesc="Civicrm is the free and open source solution for the civic sector (standalone version)"
arch=('any')
url="http://www.civicrm.org/"
license=('GPL')
depends=('php')
install=('civicrm.install')
backup=(srv/http/civicrm/.htaccess)
source=(http://downloads.sourceforge.net/project/civicrm/civicrm-stable/3.1.1/$pkgname-$pkgver-standalone.tar.gz)
md5sums=('bbaa440071af8d532d837061a2a358c8')

build() {
  mkdir -p $startdir/pkg/srv/http/civicrm
  cp -r $startdir/src/$pkgname/{*,.htaccess} $startdir/pkg/srv/http/civicrm
  echo "deny from all" > $startdir/pkg/srv/http/civicrm/.htaccess
}
