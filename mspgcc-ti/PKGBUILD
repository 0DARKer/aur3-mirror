# Maintainer: Peter Ivanov <ivanovp@gmail.com>

pkgname=mspgcc-ti
pkgver=1.00.00.00
pkgrel=1
pkgdesc="GNU toolchain for the TI MSP430 processor"
arch=('i686' 'x86_64')
url="http://software-dl.ti.com/msp430/msp430_public_sw/mcu/msp430/MSPGCC/1_00_00_00/index_FDS.html"
license=('GPL')
#makedepends=('binutils-msp430')
#depends=('elfutils' 'libmpc')
options=(!strip !emptydirs !libtool)
install=mspgcc-ti.install
_installer=Msp430GCCopensource-msp430-130423-272-linux-installer.run
source=("http://software-dl.ti.com/msp430/msp430_public_sw/mcu/msp430/MSPGCC/1_00_00_00/exports/$_installer")
sha1sums=('120fa1b81f7d9932a55ef440456b17fd6d734da8')
_install_dir=/usr/share/mspgcc-ti

build() {
  chmod +x $_installer
}

package() {
  echo Running installer...
  ${srcdir}/$_installer --mode unattended --prefix $pkgdir/$_install_dir
}

