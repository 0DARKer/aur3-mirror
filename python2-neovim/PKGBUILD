pkgname=python2-neovim
_pkgname=neovim
pkgver=0.0.35
pkgrel=2
pkgdesc="Python client to neovim"
arch=('any')
url="https://pypi.python.org/pypi/$_pkgname"
license=('Apache')
depends=('python2'
         'python2-trollius'
         'python2-msgpack'
         'python2-greenlet')
makedepends=('python2-setuptools')
optdepends=('python2-click: For GTK GUI'
            'python2-cairo: For GTK GUI'
            'python2-gobject: For GTK GUI')
source=("https://pypi.python.org/packages/source/n/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha256sums=('361b4a8cb35afd6452bf36502c786eb366a75bfdf214b49e7e3b43e0c7a8aaac')

prepare() {
  cd "$_pkgname-$pkgver"
  sed -i 's/pynvim/py2nvim/' setup.py neovim.egg-info/entry_points.txt
}

package() {
  cd "$_pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir"
}

