pkgname=python2-neovim
_pkgname=neovim
pkgver=0.0.28
pkgrel=2
pkgdesc="Python client to neovim"
arch=('any')
url="https://pypi.python.org/pypi/$_pkgname"
license=('MIT')
depends=('python2'
         'python2-trollius'
         'python2-msgpack'
         'python2-greenlet')
makedepends=('python2-setuptools')
source=("https://pypi.python.org/packages/source/n/$_pkgname/$_pkgname-$pkgver.tar.gz"
        "${pkgname}-LICENSE::https://raw.githubusercontent.com/neovim/python-client/0.0.7/LICENSE-MIT")
sha256sums=('70144ec54e9c7b7b8366f1f3fa84cb33e1c365a55a108f996182bdd0cf22a1d4'
            'b6788f5bf3308da11c3fa9a34f05919383d1643b84cf2fda132ed9fac4c8cbcd')

package() {
  cd "$_pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir"
  install -Dm644 "../${pkgname}-LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

