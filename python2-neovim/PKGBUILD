pkgname=python2-neovim
_pkgname=neovim
pkgver=0.0.7
pkgrel=1
pkgdesc="Python client to neovim"
arch=('any')
url="https://pypi.python.org/pypi/$_pkgname"
license=('MIT')
depends=('python2')
source=("https://pypi.python.org/packages/source/n/$_pkgname/$_pkgname-$pkgver.tar.gz"
        "LICENSE::https://raw.githubusercontent.com/neovim/python-client/0.0.7/LICENSE-MIT")
sha256sums=('8b754d39d423fff98d2ecdf50d1f092a71114f60c701ae8d96cdb4ddf0a02fc0'
            'b6788f5bf3308da11c3fa9a34f05919383d1643b84cf2fda132ed9fac4c8cbcd')

package() {
  cd "$_pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir"
  install -Dm644 ../LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

