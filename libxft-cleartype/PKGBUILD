# Contributor: Lee.MaRS <leemars@gmail.com>
# Contributor: freedom

pkgname=libxft-cleartype
pkgver=2.2.0
pkgrel=1
pkgdesc="FreeType-based font drawing library for X with cleartype patch"
arch=('i686' 'x86_64')
url=('http://xorg.freedesktop.org/')
license=('GPL')
depends=('fontconfig' 'libxrender')
conflicts=('libxft')
provides=("libxft=$pkgver")
makedepends=('pkgconfig')
options=('!libtool')
source=(http://xorg.freedesktop.org/releases/individual/lib/libXft-${pkgver}.tar.bz2
        libXft-2.1.14-lcd-cleartype.patch)
md5sums=('cce3c327258116493b753f157e0360c7'
         '3a7fcbe1aeb5a20eb20810332622f78f')

build() {
	cd ${startdir}/src/libXft-${pkgver}
	patch -Np1 -i ${startdir}/src/libXft-2.1.14-lcd-cleartype.patch || return 1
	./configure --prefix=/usr --sysconfdir=/etc \
	--build=${CHOST} --host=${CHOST}
	make || return 1
	make DESTDIR=${startdir}/pkg install || return 1
} 
