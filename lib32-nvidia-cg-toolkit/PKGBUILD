_pkgbasename=nvidia-cg-toolkit
pkgname=lib32-$_pkgbasename
pkgver=3.0
_date="November2010"
pkgrel=1
pkgdesc="NVIDIA Cg libraries (32 bit)" 
arch=('x86_64')
url="http://developer.nvidia.com/object/cg_toolkit.html" 
license=('custom')
depends=('lib32-glibc' 'lib32-mesa' $_pkgbasename)
conflicts=('')
source=(http://developer.download.nvidia.com/cg/Cg_${pkgver}/Cg-${pkgver}_${_date}_x86.tgz)
md5sums=('55c14bd821472cd92a5f9af69314a761')

build() {
 return 0
}

package() {
 install -dm755 ${pkgdir}/usr/lib32
 install -m644 ${srcdir}/usr/lib/* ${pkgdir}/usr/lib32
}
