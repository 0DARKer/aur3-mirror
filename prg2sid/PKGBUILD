# Maintainer: lobotomius at gmail dot com

pkgname=prg2sid
pkgver=0.69beta
pkgrel=1
pkgdesc="PRG to SID converter with automatic player identification"
arch=('any')
url="http://iancoog.altervista.org/"
license=('GPL')
source=('http://iancoog.altervista.org/C/p2s_069beta.rar')
md5sums=('31f3aa1fb4ef574a704a07727d1fc904')
makedepends=('unrar')
noextract=('p2s_069beta.rar')

prepare() {
	cd "$srcdir"
	unrar x ../p2s_069beta.rar
}

build() {
    cd "$srcdir/prg2sid"
    gcc -o prg2sid p2s.c
}

package() {
    cd "$srcdir/prg2sid"
    mkdir -p "$pkgdir/usr/bin"
    install -m 755 prg2sid "$pkgdir/usr/bin"
}
