# Maintainer: BeholdMyGlory <larvid@gmail.com>
pkgname=wxmupen64plus
pkgver=0.1
pkgrel=1
pkgdesc="A mature frontend for Mupen64Plus written using wxWidgets"
arch=('i686' 'x86_64')
url="https://bitbucket.org/auria/"
license=('GPL')
depends=('sdl' 'wxgtk-2.9')
makedepends=('python2-waf' 'mupen64plus-core-hg')
install="wxmupen64plus.install"
source=(https://bitbucket.org/auria/$pkgname/downloads/$pkgname-$pkgver.tar.bz2)
md5sums=('bd15f95d41e390e6f73c4fac497b7a21')

build() {
  cd "$srcdir/auria-wxmupen64plus-cfd1ff43c54c"

  waf --mupenapi=/usr/include/mupen64plus --wxconfig=/usr/bin/wx-config-2.9 --prefix=${pkgdir}/usr configure
  waf
  waf install
}
