# Maintainer: BeholdMyGlory <larvid@gmail.com>
pkgname=wxmupen64plus
pkgver=0.1
pkgrel=2
pkgdesc="A full-featured frontend for Mupen64Plus written using wxWidgets"
arch=('i686' 'x86_64')
url="https://bitbucket.org/auria/wxmupen64plus"
license=('GPL')
depends=('sdl' 'wxgtk-2.9')
makedepends=('python2-waf' 'mupen64plus-core-hg')
install="wxmupen64plus.install"
source=(https://bitbucket.org/auria/$pkgname/downloads/$pkgname-$pkgver.tar.bz2 wxmupen64plus.desktop)
md5sums=('bd15f95d41e390e6f73c4fac497b7a21' 'abe57a02b9366b63b83967f94bc3dc5c')

build() {
  cd "$srcdir/auria-wxmupen64plus-cfd1ff43c54c"

  waf --mupenapi=/usr/include/mupen64plus --wxconfig=/usr/bin/wx-config-2.9 --prefix=${pkgdir}/usr configure
  waf
  waf install

  install -Dm644 "${srcdir}/wxmupen64plus.desktop" "${pkgdir}/usr/share/applications/wxmupen64plus.desktop"
}
