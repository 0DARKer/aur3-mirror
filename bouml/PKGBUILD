pkgname=bouml
pkgver=6.4.3
pkgrel=1
pkgdesc='A free UML 2 modeler with C++, Idl, Java, PHP and Python code generation'
arch=('i686' 'x86_64')
options=('!strip')
url='http://bouml.fr/'
license=('GPL')
depends=('qt3')
makedepends=('rpmextract')
source=("http://$pkgname.free.fr/files/$pkgname-$pkgver-CentOS6.$CARCH.rpm")
if [ "$CARCH" = "x86_64" ]; then
sha512sums=('458d0e6ab97d84f625861b5c99550539d2ce0a7f69297e334db146a69118cc63f587443d472e1740c7680bcb055615573f9069d546c6054cfb7e01c5f2e657fc')
else
sha512sums=('d5708a9c7ce9c7b19674db914cd5e2768939a093417d8688ee50e63e3a66a863813af1ba2e22f43984367d8a8a36a9873a03d4b387397aaad269f7b84271bb44')
fi


package() {
        cd $pkgdir
	rpmextract.sh $srcdir/$pkgname-$pkgver-CentOS6.$CARCH.rpm
}
