# Contributor: Jan Kaspar <jan.kaspar at gmail dot com>
pkgname=gdigi
pkgver=0.1.8
pkgrel=1
pkgdesc="gdigi provides Digitech X-Edit functionality to Linux users"
arch=('i686' 'x86_64')
url="http://desowin.org/gdigi/"
license=('GPL')
depends=('alsa-lib' 'gtk2' 'glib2' 'expat')
makedepends=('make')
source=("http://d10xg45o6p6dbl.cloudfront.net/projects/g/gdigi/$pkgname-$pkgver.tar.bz2")
md5sums=('1453c46ba7daf9361d3471e216502edb')

build()
{
	cd $startdir/src/$pkgname-$pkgver
	make || return 1
	mkdir -p $startdir/pkg/usr/bin
	cp gdigi $startdir/pkg/usr/bin
}
