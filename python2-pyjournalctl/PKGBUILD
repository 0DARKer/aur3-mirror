# Maintainer: Steven Hiscocks <steven _at_ hiscocks _dot_ me _dot_ uk>
pkgname=python2-pyjournalctl
pkgver=0.4.0
pkgrel=1
pkgdesc="Python module that reads systemd journald similar to journalctl"
arch=('i686' 'x86_64')
url="https://github.com/kwirk/pyjournalctl"
license=('LGPL2.1')
depends=('python2' 'systemd')
makedepends=('python2-distribute')
source=("pyjournalctl-$pkgver.tar.gz::https://github.com/kwirk/pyjournalctl/tarball/$pkgver")
md5sums=('91a5a8916c5b3cda304608af622e28e0')

build() {
  cd "$srcdir"/kwirk-pyjournalctl-*
  python2 setup.py install --root="$pkgdir" --optimize=1
}
