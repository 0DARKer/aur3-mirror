# Contributor: Maciej Sitarz <macieks@freesco.pl>

pkgname=firefox-spell-pl
pkgver=1.0.20100911
_fx_ver=3.5
pkgrel=1
pkgdesc="Polish (Poland) dictionary for Firefox"
arch=(any)
url="https://addons.mozilla.org/firefox/dictionaries/"
license="GPL"
depends=("firefox>=$_fx_ver")
source=(https://addons.mozilla.org/pl/firefox/downloads/file/98784/polski_slownik_poprawnej_pisowni-${pkgver}-fx+tb+sm.xpi)
md5sums=('9fdbbb695781d62391064b06d8a45c7d')

build() {
        cd $startdir/src/dictionaries
	install -D -m 644 pl.aff ${pkgdir}/usr/share/myspell/pl.aff || return 1
	install -D -m 644 pl.dic ${pkgdir}/usr/share/myspell/pl.dic || return 1
}
