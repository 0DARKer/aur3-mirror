# Maintainer: peace4all <markspost at rocketmail dot com>
# Contributor: jase

pkgname=gstreamer0.10-fluendo
pkgver=0.10.72
pkgrel=2
pkgdesc="GStreamer fluendo mpegdemux plugin"
arch=('i686' 'x86_64')
license=('MPL')
depends=('gstreamer0.10-base')
makedepends=('pkgconfig')
url="http://www.fluendo.com/products.php?product=plugins"
groups=('gstreamer0.10-plugins')
source=(http://core.fluendo.com/gstreamer/src/gst-fluendo-mpegdemux/gst-fluendo-mpegdemux-${pkgver}.tar.bz2)
md5sums=('df726579404af65b9536428661ab4322')

build() {

  cd $srcdir/gst-fluendo-mpegdemux-$pkgver

  sed -i -e "s|%define majorminor  1.0|%define majorminor  0.10|" \
  -e "s|%define gstreamer gstreamer1|%define gstreamer gstreamer|" \
  $(find . -name 'gst-fluendo-mpegdemux.spec*')

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {

  cd $srcdir/gst-fluendo-mpegdemux-$pkgver
  make DESTDIR="$pkgdir/" install
  rm -f $pkgdir/usr/lib/gstreamer-0.10/*.{l,}a
}

