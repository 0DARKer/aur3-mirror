# Maintainer: doorknob60 <doorknob60 at gmail dot com>

pkgname=screenruler
pkgver=1.1
pkgrel=1
pkgdesc="A simple screen ruler that measures the distance between two points on your desktop. Now a proper (almost, still uses zenity) C program, not a hacky bash script."
arch=('i686' 'x86_64')
url=(https://bbs.archlinux.org/viewtopic.php?id=81536)
license=('MIT')
groups=('x11')
depends=('zenity')
source=(http://www.mdn.fm/files/205103_wu2to/screenruler-1.1.tar.gz 'screenruler.desktop' 'screenruler.png')
md5sums=('610c3d8072e49d56c72ca87d53ff23c2'
         '188d6d83622ba724f88ae52850f1aacc'
         'caa844ad9d6c3bf88695b271f712dea3')

build() {
cd $pkgname-$pkgver
gcc screenruler.c -lX11 -lm -o screenruler
}

package() {
install -d $pkgdir/usr/bin
install -d $pkgdir/usr/share/applications
install -d $pkgdir/usr/share/pixmaps
cp $srcdir/$pkgname-$pkgver/screenruler $pkgdir/usr/bin/
cp $srcdir/screenruler.desktop $pkgdir/usr/share/applications/
cp $srcdir/screenruler.png $pkgdir/usr/share/pixmaps/
}
