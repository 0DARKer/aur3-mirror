# Contributor: Calimero <calimeroteknik@free.fr>
pkgname=defora-panel
pkgver=0.1.1
pkgrel=1
pkgdesc="The Defora lightweight panel"
arch=('i686' 'x86_64')
url="http://defora.org/os"
license=('GPL3')
depends=('defora-libsystem' 'gtk2')
source=(https://www.defora.org/os/download/download/3388/Panel-${pkgver}.tar.gz)
md5sums=('a76d15f2c3fcf6ec412e9a18c86b9869')

build() {
  cd "$srcdir"/Panel-$pkgver
  make PREFIX="/usr" || return 1
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
