pkgname=siva-flat-themes
pkgver=1.2.0
pkgrel=1
pkgdesc="A theme for GTK3, GTK2, Metacity, xfwm4, openshell, emerald"
arch=('any')
url="http://gnome-look.org/content/show.php/Siva+Flat+1.2.0?content=156879"
license=('GPL')
depends=('gtk-engine-unico' 'gtk-engine-murrine' 'gnome-themes-standard')
source=($pkgname-$pkgver.zip::http://www.deviantart.com/download/353499016/siva_flat_1_2_0_by_nale12-d5ugpl4.zip)
md5sums=('8286ba1921d0716571f29568075090cf')

package() {
  cd "$srcdir"
  find Siva* -type f -exec install -Dm644 {} "$pkgdir/usr/share/themes/{}" \;
}

