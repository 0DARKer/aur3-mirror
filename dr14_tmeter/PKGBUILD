
pkgname=dr14_tmeter
pkgver=0.5.0
pkgrel=1
pkgdesc="Compute the DR14 value of the givens audio files"
arch=(any)
license=('GPL3')
url="http://simon-r.github.com/dr14_t.meter"
depends=('python' 'flac' 'lame' 'faad2' 'vorbis-tools' 'python-numpy' 'python-scipy' )

source=("https://github.com/downloads/simon-r/dr14_t.meter/${pkgname}-${pkgver}.tar.gz")
md5sums=('ea4c1cef81529720fbed96f75ed2ce2f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  python setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1
}