
pkgname=dr14_tmeter
pkgver=0.9.5
pkgrel=1
pkgdesc="Compute the dynamic range DR14 value of the givens audio files"
arch=(any)
license=('GPL3')
url="http://dr14tmeter.scienceontheweb.net"
depends=('python' 'flac' 'lame' 'faad2' 'ffmpeg' 'vorbis-tools' 'python-numpy' )
optdepends=('python-matplotlib-git: plot support')

source=("https://github.com/downloads/simon-r/dr14_t.meter/dr14tmeter-${pkgver}.tar.gz")
sha1sums=('da52ae6dc9f89435126b7062989532e6f0fd889f')

build() {
  cd "$srcdir/dr14tmeter-$pkgver"
  python setup.py build
}

package() {
  cd "$srcdir/dr14tmeter-$pkgver"
  echo ${pkgdir}
  python setup.py install --root=${pkgdir} --prefix=usr --optimize=1
}
