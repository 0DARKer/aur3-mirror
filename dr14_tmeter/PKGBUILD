
pkgname=dr14_tmeter
pkgver=0.7.3
pkgrel=1
pkgdesc="Compute the dynamic range DR14 value of the givens audio files"
arch=(any)
license=('GPL3')
url="http://simon-r.github.com/dr14_t.meter"
depends=('python' 'flac' 'lame' 'faad2' 'ffmpeg' 'vorbis-tools' 'python-numpy' 'python-scipy' )

source=("https://github.com/downloads/simon-r/dr14_t.meter/dr14tmeter-${pkgver}.tar.gz")
md5sums=('4960cd18967ac530d4d52166ea15b85b')

build() {

  cd "$srcdir/dr14tmeter-$pkgver"

  python setup.py build

}

package() {

  cd "$srcdir/dr14tmeter-$pkgver"

  echo ${pkgdir}

  python setup.py install --root=${pkgdir} --prefix=usr --optimize=1

}
