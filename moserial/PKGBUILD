# Contributor: Matias De la Puente <mfpuente.ar@gmail.com>
pkgname=moserial
pkgver=2.30.0
pkgrel=2
pkgdesc="Clean, friendly gtk-based serial terminal for the gnome desktop"
arch=('i686' 'x86_64')
url="http://live.gnome.org/moserial"
license=('GPL')
groups=()
depends=('gtk2' 'gconf' 'gnome-doc-utils>=0.3.2')
makedepends=()
optdepends=()
provides=(moserial)
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://ftp.gnome.org/pub/GNOME/sources/moserial/2.30/$pkgname-$pkgver.tar.bz2)
noextract=()
md5sums=('6b1d57d56c5f62b6e60a3084c9b2762a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

