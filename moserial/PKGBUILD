# Contributor: Matias De la Puente <mfpuente.ar@gmail.com>
pkgname=moserial
pkgver=2.32.1
pkgrel=1
pkgdesc="Clean, friendly gtk-based serial terminal for the gnome desktop"
arch=('i686' 'x86_64')
url="http://live.gnome.org/moserial"
license=('GPL')
depends=('gtk2' 'gconf' 'gnome-doc-utils>=0.3.2')
makedepends=('intltool')
provides=(moserial)
source=(http://ftp.gnome.org/pub/GNOME/sources/moserial/2.32/$pkgname-$pkgver.tar.bz2)
sha256sums=('3509d72b029652273ca633d6608c680f6b85e877e30b2b9e828ec2ad8df1c51f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
