# Contributor:me4tw (me4tw.b@gmail.com) 
pkgname=uncrustify
pkgver=0.56
pkgrel=1
pkgdesc="Source Code Beutifier for C-like languages, similar to indent"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/uncrustify/files/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz/download"
license=('GPL')
groups=()
depends=()
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source="http://sourceforge.net/projects/uncrustify/files/uncrustify/uncrustify-${pkgver}/uncrustify-${pkgver}.tar.gz/download"
noextract=()
md5sums=('991ee882a265fa28f23f747737bce740')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}

