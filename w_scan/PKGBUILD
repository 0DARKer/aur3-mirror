# Maintainer: Michael Lass <bevan@bi-co.net>

pkgname=w_scan
pkgver=20120128
pkgrel=1
arch=(i686 x86_64)
pkgdesc="Scans for DVB channels without the need for initial tuning data"
url="http://wirbel.htpc-forum.de"
license="GPL"
makedepends=('linux-api-headers')
depends=('glibc')
backup=()
source=(http://wirbel.htpc-forum.de/w_scan/$pkgname-$pkgver.tar.bz2)
md5sums=('6092db5229faa4bde0e735f9a60ff082')

build() {
    cd $srcdir/$pkgname-$pkgver

    ./configure --prefix=/usr
    make
}

package() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR="$pkgdir" install

    mkdir -p $pkgdir/usr/share/doc/w_scan
    cp README $pkgdir/usr/share/doc/w_scan
}
