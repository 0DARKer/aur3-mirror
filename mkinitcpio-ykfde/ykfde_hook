#!/bin/sh

run_hook() {
	ykfde_slot=${ykfde_slot:-1}

	if [ "${ykfde_twofactor}" = "y" ]; then
		echo -n "Please give two factor key for Yubico: "
		stty -echo
		read TWOFACTOR
		stty echo
	else
		TWOFACTOR=""
	fi

	sleep 1
	ykchalresp -${ykfde_slot} "${TWOFACTOR}$(cat /ykfde-challenge)" > /crypto_keyfile.bin
}
