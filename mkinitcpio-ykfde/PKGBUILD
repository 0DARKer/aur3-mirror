# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=mkinitcpio-ykfde
pkgver=0.1.1
pkgrel=1
pkgdesc="Full disk encryption with Yubikey (Yubico key)"
arch=('any')
url="http://www.eworm.de/"
license=('GPL')
depends=('makepasswd' 'ykpers' 'cryptsetup')
install=mkinitcpio-ykfde.install
source=('ykfde_hook' 'ykfde_install' 'ykfde')
    
package() {
	install -D -m644 ${srcdir}/ykfde_hook ${pkgdir}/usr/lib/initcpio/hooks/ykfde
	install -D -m644 ${srcdir}/ykfde_install ${pkgdir}/usr/lib/initcpio/install/ykfde
	install -D -m755 ${srcdir}/ykfde ${pkgdir}/usr/sbin/ykfde
}

sha256sums=('68771d004e3dd72b5fb86d9f01903ecf2ddab168b5906bd881b546fe6e663927'
            '0c3e637a9baa22fddd431adeca25d7961e9dd8f8d736cca2276fb5e99ed116a0'
            '9ef46fc5b3e4b2c5b77d0f29da42e604d3ffed513399ab28b986ad436f949516')
