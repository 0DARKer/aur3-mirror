pkgname=prips
pkgver=0.9.4
pkgrel=4
pkgdesc="Prints IP subnet ranges by list or CIDR"
arch=(i686 x86_64)
url="http://packages.debian.org/stable/net/prips"
license=('GPL')
source=(http://ftp.de.debian.org/debian/pool/main/p/prips/prips_0.9.4.orig.tar.gz http://ftp.de.debian.org/debian/pool/main/p/prips/prips_0.9.4-3.1.diff.gz)
md5sums=('e09f2825c81c44a7e27528b942989d61' '5944f14ffb5d1da935c378ed6094b93c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -p1 < ../prips_0.9.4-3.1.diff
  rm debian/patches/20_cidr_lp64.dpatch

  for file in debian/patches/*_*.dpatch
  do
    sh $file -patch
  done

  make

  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/include
  cp prips $pkgdir/usr/bin/
  cp prips.h $pkgdir/usr/include/
}

# vim:set ts=2 sw=2 et:
