pkgname=jriver-media-center
_debpkgver=19.0.146
pkgver=$_debpkgver
pkgrel=1
pkgdesc="The Most Comprehensive Media Software"
arch=('x86_64')
url="http://www.jriver.com/"
license=('custom')
depends=('lib32-alsa-lib' 'lib32-gcc-libs' 'lib32-libx11' 'lib32-util-linux')
source=("http://files.jriver.com/mediacenter/channels/v19/latest/MediaCenter-$_debpkgver.deb" 'License.txt')
sha256sums=('f87ff39140c076d2afb0c5f179cf2e1fbbbeccf5e47994a9fc082e2c43da9592' 'ee00f430918df6be37777a61e12812875b5583379c78daaa969bae7383a41fbd')

package() {
  cd "$srcdir"
  bsdtar xf data.tar.xz -C "$pkgdir"
    install -Dm644 "License.txt" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING"
    rm -r "$pkgdir/usr/lib/jriver/Media Center 19/License.txt"
}
