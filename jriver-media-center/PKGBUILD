pkgname=jriver-media-center
_debpkgver=20.0.13
pkgver=$_debpkgver
pkgrel=2
pkgdesc="The Most Comprehensive Media Software"
arch=('x86_64')
url="http://www.jriver.com/"
license=('custom')
depends=('lib32-alsa-lib' 'lib32-gcc-libs' 'lib32-libx11' 'lib32-util-linux' 'lib32-libxext' 'lib32-gtk2')
optdepends=('lib32-mesa-libgl: for video support' 'lib32-nvidia-libgl: for nvidia video support')
source=("http://files.jriver.com/mediacenter/channels/v20/latest/MediaCenter-$_debpkgver.deb" 'License.txt')
sha256sums=('fbe2d8fd33e1751279821a3cff050215675ef55deb62e91aaf29bac18531e484' 'ee00f430918df6be37777a61e12812875b5583379c78daaa969bae7383a41fbd')

package() {
  cd "$srcdir"
  bsdtar xf data.tar.xz -C "$pkgdir"
    install -Dm644 "License.txt" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING"
 #   rm -r "$pkgdir/usr/lib/jriver/Media Center 19/License.txt"
}
