# Maintainer: BlackEagle < ike DOT devolder AT gmail DOT com >
pkgname=par2cmdline
pkgver=0.5.1
pkgrel=1
pkgdesc="A file verification and repair tool"
url="https://github.com/eMPee584/par2cmdline"
license="GPL"
depends=('gcc-libs')
makedepends=()
arch=('i686' 'x86_64')
source=(
	"http://herecura.be/files/par2cmdline-0.5.1.tar.xz"
)
sha256sums=(
	'04197fa64fddab58cf02b2272cb0381ca3d9542bb2b8f4bd3f77bc3275b1736b'
)

build() {
	cd ${pkgname}-${pkgver}
	msg "Automake"
	aclocal
	automake --add-missing
	autoconf
	msg "Configure"
	./configure --prefix=/usr
	msg "Make"
	make
}

package() {
	cd ${pkgname}-${pkgver}
	make DESTDIR=$startdir/pkg install
}
