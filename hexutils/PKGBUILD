# Maintainer: Steve Engledow <steve at offend dot me dot uk>
pkgname='hexutils'
pkgver=0.1
pkgrel=1
pkgdesc="A tool to convert between character data and hex strings"
arch=('i686' 'x86_64')
license=('MIT')
depends=('nodejs')
url="http://github.com/stilvoid/"
source=(
    'hexutils.js'
    'LICENSE'
)
md5sums=(
    '29cd26887acea347bcaf344580aa2243'
    '9a5f66d5c235fb2ef2a02267485900f5'
)

build() {
    echo -e "#!/bin/sh\nnode /usr/lib/${pkgname}/hexutils.js \$*" > "${srcdir}/hexutils"
}

package() {
    install -Dm64 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    install -Dm644 "${srcdir}/hexutils.js" "${pkgdir}/usr/lib/${pkgname}/hexutils.js"
    install -Dm755 "${srcdir}/hexutils" "${pkgdir}/usr/bin/hexutils"
}
