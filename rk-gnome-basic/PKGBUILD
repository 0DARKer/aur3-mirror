pkgname=rk-gnome-basic
pkgver=2014.2.10
pkgrel=3
pkgdesc="RubenKelevra's gnome-basic compilation. Install me with 'yaourt -S $pkgname --noconfirm --needed'"
url="http://notyetthere.com"
arch=('i686' 'x86_64')
license=('GPLv3')
makedepends=("yaourt"
"rk-basic-system-tools"
)
depends=("gdm"
"baobab"
"eog"
"evince"
"gnome-backgrounds"
"gnome-calculator"
"gnome-control-center"
"gnome-desktop"
"gnome-dictionary"
"gnome-disk-utility"
"gnome-font-viewer"
"gnome-icon-theme"
"gnome-icon-theme-extras"
"gnome-icon-theme-symbolic"
"gnome-keyring"
"gnome-screenshot"
"gnome-session"
"gnome-settings-daemon"
"gnome-shell"
"gnome-shell-extensions"
"gnome-system-log"
"gnome-system-monitor"
"gnome-terminal"
"gnome-themes-standard"
"gnome-user-docs"
"gnome-user-share"
"gucharmap"
"mousetweaks"
"mutter"
"nautilus"
"sushi"
"tracker"
"xdg-user-dirs-gtk"
"yelp"

)
optdepends=(
"rk-gnome-extra: for gnome with some extras"
"rk-gnome-full: for gnome with full desktop experience"
)
post_install() { 
   echo "enabling services..."
   echo "NetworkManager.service"
   usr/bin/systemctl enable NetworkManager
   echo "ModemManager.service"
   usr/bin/systemctl enable ModemManager
   echo "gdm.service"
   usr/bin/systemctl enable gdm
   echo "done"
}
