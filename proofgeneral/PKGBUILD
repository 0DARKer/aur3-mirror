# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: dimino jeremie <jeremie@dimino.org>

pkgname=proofgeneral
pkgver=4.0
pkgrel=3
pkgdesc='Generic interface for proof assistants.'
arch=('i686' 'x86_64')
license=('GPL')
url='http://proofgeneral.inf.ed.ac.uk/'
depends=('emacs')
install="${pkgname}.install"
source=("http://proofgeneral.inf.ed.ac.uk/releases/ProofGeneral-${pkgver}.tgz"
        'mmmfix.diff')
md5sums=('bd51c8fb534aa932d7d585b5c713e5a4'
         'd006badbef6a2dc7d807e36cb526330a')

build() {
  cd ProofGeneral

  patch -Np0 -i ${srcdir}/mmmfix.diff

  make clean

  make
}

package() {
  cd ProofGeneral

  make PREFIX=${pkgdir}/usr install
}
