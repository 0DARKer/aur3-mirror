# Contributor: Bartosz Chmura <chmurli at gmail dot com>

pkgname=ttf-aller
_pkgname=Aller
pkgver=1.0
pkgrel=2
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="very nice True Type Font"
arch=('any')
license=('EULA')
source=(http://dl.dropbox.com/u/993023/Aller.tar.gz)
url="http://www.fontsquirrel.com/fonts/Aller"
install=$pkgname.install
md5sums=('724ff27ed0cbb8b02ff8297a8b9835d0')

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/$_pkgname/*.ttf $pkgdir/usr/share/fonts/TTF
}

