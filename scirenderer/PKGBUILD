# Maintainer: Victor Dmitriyev <mrvvitek@gmail.com>

pkgname=scirenderer
pkgver=1.0.2
pkgrel=1
pkgdesc='A rendering library based on JoGL'
arch=('any')
url="http://forge.scilab.org/index.php/p/scirenderer/"
license=('custom:CeCILL')
depends=('java-runtime' 'jogl')
source=('COPYING'
	'http://forge.scilab.org/index.php/p/scirenderer/downloads/get/scirenderer-1.0.2.jar')
md5sums=('2d740db2d9a00ce8e4d54d3ea8789b5a'
	'23f35050b4e7f9e79257e53f73f63054')
noextract=(*.jar)
package() {
cd "$srcdir"
install -d "$pkgdir/usr/share/java/$pkgname"
install -d "$pkgdir/usr/share/licenses/$pkgname"
install -Dm644 $pkgname-$pkgver.jar "$pkgdir/usr/share/java/$pkgname/"
ln -s $pkgname-$pkgver.jar "$pkgdir/usr/share/java/$pkgname/$pkgname.jar"
install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname"
}
# vim:set ts=2 sw=2 et:
