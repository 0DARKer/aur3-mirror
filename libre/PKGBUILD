# Contributor: Luka Perkov <archlinux <at> lukaperkov <dOt> net>

pkgname=libre
_orig_name=re
pkgver=0.2.0
pkgrel=1
pkgdesc="portable and generic library for real-time communications with async IO support, a complete SIP stack with support for SDP, RTP/RTCP, STUN/TURN/ICE and DNS Client"
url="http://www.creytiv.com/"
license=('BSD')
arch=('i686' 'x86_64')
makedepends=('openssl')
source=(http://www.creytiv.com/pub/${_orig_name}-${pkgver}.tar.gz)

md5sums=('0aa00762fbee7694b9e5844675f5c57d')

build() {
	cd "${srcdir}/${_orig_name}-${pkgver}" || return 1
	make DESTDIR="$pkgdir" || return 1
	make DESTDIR="$pkgdir" install || return 1
}
