# Contributor: Luka Perkov <archlinux <at> lukaperkov <dOt> net>

pkgname=libre
_orig_name=re
pkgver=0.1.0
pkgrel=1
pkgdesc="shred library that implements VoIP related protocols like SIP/SDP, RTP/RTCP, STUN/TURN/ICE, DNS"
url="http://www.creytiv.com/"
license=('BSD')
arch=('i686' 'x86_64')
makedepends=('openssl')
source=(http://www.creytiv.com/pub/${_orig_name}-${pkgver}.tar.gz)

md5sums=('d85debe4b6bae02c63eb7d248168c9e8')

build() {
	cd "${srcdir}/${_orig_name}-${pkgver}" || return 1
	make DESTDIR="$pkgdir" || return 1
	make DESTDIR="$pkgdir" install || return 1
}
