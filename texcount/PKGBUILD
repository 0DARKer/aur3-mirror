# Contributor: clu

pkgname=texcount
pkgver=2.2
pkgrel=3
pkgdesc="TeXcount is a Perl script for counting words in LaTeX documents."
arch=('any')
url="http://app.uio.no/ifi/texcount/"
#old url
#url="http://folk.uio.no/einarro/Comp/texwordcount.html"
license=("LPPL")
depends=('perl')
source=("http://app.uio.no/ifi/texcount/download.php?file=texcount_2_2.zip")
md5sums=('595826f4866a7e9e5e82d15adc693c53')
#source=("http://folk.uio.no/einarro/Comp/download.php?file=texcount_2_2.zip")

build() {
  cd $srcdir

  mkdir -p $pkgdir/usr/local/bin
  cp -f texcount.pl $pkgdir/usr/local/bin/texcount

  mkdir -p $pkgdir/usr/share/docs/texcount
  cp -f TeXcount.pdf $pkgdir/usr/share/docs/texcount
  cp -f QuickReference.pdf $pkgdir/usr/share/docs/texcount
}
