# Maintainer: Miguel Revilla <yo@miguelrevilla.com>
# Contributor: Miguel Revilla <yo@miguelrevilla.com>

pkgname=libcutl
pkgver=1.6.3
pkgrel=1
pkgdesc="libcutl is a C++ utility library"
arch=('i686' 'x86_64')
url="http://www.codesynthesis.com/projects/libcutl/"
license=('GPL')
source=("http://www.codesynthesis.com/download/libcutl/1.6/libcutl-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make ECHO=echo
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make ECHO=echo DESTDIR="${pkgdir}" install
}

md5sums=('35c6f8f14a85ae06b6b35c19ef3d5724')
