# Contributor: Luka Perkov <archlinux <at> lukaperkov <dOt> net>

pkgname=baresip
pkgver=0.1.0
pkgrel=1
pkgdesc="portable SIP user-agent with support for Audio/Video"
url="http://www.creytiv.com/"
license=('BSD')
arch=('i686' 'x86_64')
makedepends=('speex' 'gsm' 'libre')
source=(http://www.creytiv.com/pub/${pkgname}-${pkgver}.tar.gz)

md5sums=('e8a1a60c9d4837771a998cca1f4a9461')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}" || return 1
	make DESTDIR="$pkgdir" || return 1
	make DESTDIR="$pkgdir" install || return 1
}
