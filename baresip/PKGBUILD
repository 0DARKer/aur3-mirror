# Contributor: Luka Perkov <archlinux <at> lukaperkov <dOt> net>

pkgname=baresip
pkgver=0.2.0
pkgrel=1
pkgdesc="portable and modular SIP User-Agent with audio and video support" 
url="http://www.creytiv.com/"
license=('BSD')
arch=('i686' 'x86_64')
depends=('speex' 'gsm' 'libre')
source=(http://www.creytiv.com/pub/${pkgname}-${pkgver}.tar.gz)

md5sums=('c4e160463b2bfb2e326e916089da1c4f')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}" || return 1
	make DESTDIR="$pkgdir" || return 1
	make DESTDIR="$pkgdir" install || return 1
}
