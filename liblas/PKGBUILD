# Maintainer: Adam Ehlers Nyholm Thomsen <adament@gmail.com>
pkgname=liblas
pkgver=1.2.1
pkgrel=1
pkgdesc="a C/C++ library for reading and writing ASPRS LAS versions 1.0, 1.1 and 1.2 data."
arch=('i686' 'x86_64')
url="http://liblas.org"
license=('BSD')
depends=('gdal' 'libgeotiff>=1.2.5')
makedepends=()
optdepends=()
source=("http://liblas.org/raw-attachment/wiki/$pkgver/$pkgname-src-$pkgver.tar.bz2")
md5sums=('74e61737ebec982c6e4d4b58274140c1')

build() {
  cd "$srcdir/$pkgname-src-$pkgver"

  ./configure --prefix=/usr --with-geotiff=/usr --with-gdal
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
