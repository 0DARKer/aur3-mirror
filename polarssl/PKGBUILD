# Maintainer: Mihai Militaru <mihai.militaru@gmx.com>

pkgname=polarssl
pkgver=0.14.0
pkgrel=3
pkgdesc="Open Source embedded SSL/TLS cryptographic library"
arch=('i686' 'x86_64')
url="http://www.polarssl.org/"
license=('GPL2')
source=(http://www.polarssl.org/code/releases/polarssl-"$pkgver"-gpl.tgz)
md5sums=('669a0582a27a5ec381542f0c67e966b7')
depends=('glibc')

build() {
  cd "$pkgname"-"$pkgver" || return 1

  sed -i 's^# CFLAGS += -fPIC^CFLAGS += -fPIC^g' library/Makefile || return 1
  sed -i 's#all: static#all: static shared#g' library/Makefile || return 1

  make || return 1
  make DESTDIR="$pkgdir/usr" install || return 1
}
