# Maintainer: Marcelo Garlet Millani <marcelogmillani at gmail dot com>
pkgname=boomange
pkgver=0.1.1.0
pkgrel=1
pkgdesc='A Bookmarks manager with a HTML generator'
url="http://hackage.haskell.org/package/${pkgname}"
license=('GPL3')
arch=('i686' 'x86_64') # should work for any arch which haskell may be compiled to
depends=('haskell-simtreelo' 'haskell-descrilo' 'ghc' 'gmp' 'libffi')
source=( "http://hackage.haskell.org/package/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz" )
sha256sums=('b015bb6619d09d034510002be6c591eb23a6229c636799a7d3e2d44289afa103')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O --enable-executable-dynamic
	runhaskell Setup build
	runhaskell Setup haddock
}
package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	runhaskell Setup copy --destdir=${pkgdir}
	install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
	rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}

