pkgname=curator-hg
pkgver=66
pkgrel=1
pkgdesc="A static image gallery generator"
arch=('i686' 'x86_64')
url="http://furius.ca/curator/"
license=('GPL')
depends=('imagemagick' 'python2')
makedepends=('mercurial')
optdepends=('pil: use the Python Imaging Library instead of ImageMagick')
conflicts=('curator')
provides=('curator')
_hgroot=https://hg.furius.ca/public
_hgrepo=curator

build() {
    cd "$srcdir"
    msg "Connecting to Mercurial server...."

    if [[ -d "$_hgrepo" ]]; then
        cd "$_hgrepo"
        hg pull -u
        msg "The local files are updated."
    else
        hg clone "$_hgroot/$_hgrepo" "$_hgrepo"
    fi

    msg "Mercurial checkout done or server timeout."
    msg "Starting build...."

    rm -rf "$srcdir/$_hgrepo-build"
    cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
    cd "$srcdir/$_hgrepo-build"
    python2 setup.py build
}

package() {
  cd "$srcdir/$_hgrepo-build"
  python2 setup.py install --prefix=/usr --root="$pkgdir"
}
