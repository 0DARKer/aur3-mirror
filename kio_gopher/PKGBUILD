# Contributor: Pierre Schmitz <pierre@archlinux.de>

pkgname=kio_gopher
pkgver=0.1.3
_kdever=4.2.4
pkgrel=1
pkgdesc="Kioslave is a kde technology that allows kde programs to access a given protocol."
arch=('i686' 'x86_64')
url="http://kgopher.berlios.de"
license=('GPL')
depends=('kdelibs')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("http://download.kde.org/stable/${_kdever}/src/extragear/${pkgname}-${pkgver}-kde${_kdever}.tar.bz2")
md5sums=('9423108e303f4f00a39508c5a87bbffd')

build() {
  cd $srcdir
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver}-kde${_kdever} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
  make DESTDIR=$pkgdir install
}
