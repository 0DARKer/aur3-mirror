pkgname=wallch
_pkgname=wall-changer
pkgver=3.01
pkgrel=3
pkgdesc="A powerful general purpose wallpaper changer."
arch=('i686' 'x86_64')
url="http://wall-changer.sourceforge.net//"
license=('GPL3')
depends=('qt4' 'libexif' 'opencv' 'libnotify' 'libunity')
makedepends=('dee')
provides=('wallch')
source=("http://downloads.sourceforge.net/project/${_pkgname}/${pkgname}_${pkgver}.tar.gz")
install='wallch.install'
md5sums=('e7e418e366ea1cf8e509e16be8677f6a')


build() {

	cd $srcdir/$pkgname-$pkgver 
	/usr/lib/qt4/bin/qmake *.pro || return 1
	make || return 1
}

package() {
	cd $srcdir/$pkgname-$pkgver 
        sed -i -e 's|lrelease|/usr/lib/qt4/bin/lrelease|g' Makefile
	make INSTALL_ROOT=${pkgdir} install || return 1
	mkdir -p ${pkgdir}/usr/bin
	cp wallch ${pkgdir}/usr/bin
}
