# Contributor: Nick B <Shirakawasuna at gmail _dot_com>
pkgname=plasma-netgraph-plasmoid
pkgver=0.3
pkgrel=1
pkgdesc="A plasmoid that displays network usage."
arch=('i686' 'x86_64')
url="http://code.google.com/p/ivplasma/"
license=('GPL')
depends=('kdebase')
makedepends=('cmake' 'gcc' 'automoc4')
source=(http://ivplasma.googlecode.com/files/plasma-netgraph-$pkgver.tar.gz)
md5sums=('2e7c598485d388ae554d76fb9d99495b')

build() {

cd $startdir/src/plasma-netgraph-$pkgver
mkdir build
cd build

cmake -DCMAKE_INSTALL_PREFIX=/usr ../ || return 1
make || return 1
make DESTDIR=$startdir/pkg install || return 1
}
