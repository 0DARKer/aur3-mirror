# Maintainer:  TDY <tdy@gmx.com>
# Contributor: Christoph Zeiler <rabyteNOSPAM_at_gmx.dot.org>

pkgname=mount-gtk
pkgver=1.0.9
pkgrel=1
pkgdesc="A GTK+ frontend for pmount"
arch=('i686' 'x86_64')
url="http://mount-gtk.sourceforge.net/"
license=('GPL')
depends=('dbus-glib>=0.70' 'gtk2>=2.10.0' 'pmount')
makedepends=('pkgconfig>=0.9')
optdepends=('libnotify>=0.4.1: provides error message capabilities')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('f2bd989a78fc69f831a3ffb3fdc0460c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
