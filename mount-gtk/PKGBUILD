pkgname=mount-gtk
pkgver=1.0.10
pkgrel=1
pkgdesc="A GTK+ frontend for pmount"
arch=('i686' 'x86_64')
url="http://mount-gtk.sourceforge.net/"
license=('GPL')
depends=('glib2>=2.26.0' 'gtk2>=2.12.0' 'pmount')
makedepends=('pkgconfig>=0.9')
#optdepends=('libnotify>=0.4.1: provides error message capabilities')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('186c4721a7cf1ce285d6a4a59a1f5906')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  # libnotify currently breaks
  sed -i 's,define\( HAVE_LIBNOTIFY\) 1,undef\1,' configure
  ./configure --prefix=/usr --with-gtk-version=gtk2
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
