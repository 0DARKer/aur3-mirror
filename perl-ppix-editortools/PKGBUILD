pkgname='perl-ppix-editortools'
pkgver='0.11'
pkgrel='1'
pkgdesc="Utility methods and base class for manipulating Perl via PPI"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-class-xsaccessor>=1.02' 'perl-ppi>=1.203')
makedepends=('perl-test-differences' 'perl-test-most')
url='http://search.cpan.org/dist/PPIx-EditorTools'
source=('http://search.cpan.org/CPAN/authors/id/A/AZ/AZAWAWI/PPIx-EditorTools-0.11.tar.gz')
md5sums=('a56672022c0e382f168ccce08b2a3e26')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/PPIx-EditorTools-0.11"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
