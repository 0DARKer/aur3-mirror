# Contributor: Michal Karas <largon@largon.net>

pkgname=git-sh
pkgver=1.0
pkgrel=1
pkgdesc="A customized bash environment suitable for git work"
arch=(any)
depends=('git')
url="http://github.com/rtomayko/git-sh/tree/1.0"
license=('GPL')
md5sums=('dc58ee1a2645ee2ad63825515a086754')
source=(http://github.com/rtomayko/git-sh/tarball/1.0)

_gitcommit=bedba53

build() {
  mkdir -p ${pkgdir}/usr/bin
  cd ${srcdir}/rtomayko-git-sh-${_gitcommit}
  make || return 1
  make DESTDIR=${pkgdir} PREFIX='$(DESTDIR)/usr/' install
}
