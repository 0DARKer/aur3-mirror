# Maintainer: Thomas Haider <t.haider@deprecate.de>
pkgname=valama-git
pkgver=eb8e4d3
pkgrel=1
pkgdesc="Next generation Vala IDE"
arch=('i686' 'x86_64')
url="https://github.com/Valama/valama"
license=('GPL3')
groups=()
depends=('vala' 'libgee' 'gdl' 'gtksourceview3' 'hicolor-icon-theme' 'desktop-file-utils' 'clutter-gtk')
makedepends=('git' 'cmake')
source=(git://github.com/Valama/valama.git)
md5sums=(SKIP) 
install=valama.install

pkgver() {
  cd $srcdir/valama
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $srcdir/valama
  mkdir build
  cd build
  cmake -DPOSTINSTALL_HOOK=OFF -DCMAKE_INSTALL_PREFIX=/usr ..
  make -j2  
}

package() {
  cd "$srcdir/valama/build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
