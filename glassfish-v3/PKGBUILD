# Contributor: coverslide (new version)
# Contributor: andrej (new pkgbuild)
# Contributor: xtecuan (config)

pkgname=glassfish-v3
pkgver=3.1
pkgrel=1
pkgdesc="Application server (like tomcat) based on Java EE 6 from Sun"
url="https://glassfish.dev.java.net/"
license=(GPL CDDL)
provides=(glassfish)
conflicts=(glassfish)
depends=(jre apache-ant)
makedepends=(jdk)
arch=(i686 x86_64)
options=(!strip)
source=(http://download.java.net/glassfish/3.1/release/glassfish-3.1.zip
       glassfish
       glassfishrc
)

md5sums=('a4951c1a7268f92fd0bd6fada89f29d6'
         '8b7baab86688c0d9700e7618ba256c92'
         '72470179aa643e531922ac4e3a9a68b8')

build() {
    mkdir $startdir/pkg/opt
    mv glassfish3 $startdir/pkg/opt/
    install -D $srcdir/glassfish $pkgdir/etc/conf.d/glassfish
    install -D $srcdir/glassfishrc $pkgdir/etc/rc.d/glassfish
}

