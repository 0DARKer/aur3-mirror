# Maintainer: Bernhard Friedreich <friesoft@gmail.com>
# Contributor: aleph (rc script)

pkgname=glassfish-v3
pkgver=3.0.1
pkgrel=2
pkgdesc="Application server (like tomcat) based on Java EE 6 from Sun"
url="https://glassfish.dev.java.net/"
license=(GPL CDDL)
provides=(glassfish)
conflicts=(glassfish)
depends=(jre apache-ant)
makedepends=(jdk)
arch=(i686 x86_64)
options=(!strip)
source=(http://download.java.net/glassfish/v3u1/release/glassfish-3.0.1.zip
       glassfishrc
)
md5sums=('a24f6ca15bb6b38d4cb2998d607abcde'
         '3c9968e29a6f8177b4c752af53487210')

build() {
    mkdir $startdir/pkg/opt
    mv glassfishv3 $startdir/pkg/opt/
    install -D $srcdir/glassfishrc $pkgdir/etc/rc.d/glassfish
}

