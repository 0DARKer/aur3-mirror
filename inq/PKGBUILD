# Contributor: Frane Bandov <frane@offbyte.com>
pkgname=inq
pkgver=1.0.0
pkgrel=1
pkgdesc="Inq is a graphical front-end for libinklevel."
url="http://www.fioreltech.net/download/index.php#Inq"
license=('GPL')
depends=('qt4' 'libinklevel')
arch=('i686' 'x86_64')
source=(http://www.fioreltech.net/include/downloader/click.php?id=198
	installrules
	inq.desktop)
md5sums=(b82d1f29773eb60d9a336631df1289cc 2c46cf40ee2e3e35c0d2b13d96b6f67f 97184a30913679b695417568eb272d74)

build() {
  cp $srcdir/installrules $srcdir/$pkgname-$pkgver
  cp $srcdir/inq.desktop $srcdir/$pkgname-$pkgver
  cd $srcdir/$pkgname-$pkgver
  
  ./configure
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
