install: inq
	$(MKDIR) $(DESTDIR)/usr/inq
	$(INSTALL_PROGRAM) inq $(DESTDIR)/usr/inq/inq
	$(INSTALL_FILE) *.qm $(DESTDIR)/usr/inq
	$(INSTALL_DIR) docs $(DESTDIR)/usr/inq/
	$(MKDIR) $(DESTDIR)/usr/inq/images
	$(INSTALL_FILE) images/icon.png $(DESTDIR)/usr/inq/images/icon.png
	$(MKDIR) $(DESTDIR)/usr/bin
	$(SYMLINK) $(DESTDIR)/usr/inq/inq $(DESTDIR)/usr/bin/inq
	
	$(MKDIR) $(DESTDIR)/usr/share/applications/
	$(INSTALL_FILE) inq.desktop $(DESTDIR)/usr/share/applications/inq.desktop

FORCE:

