# Maintainer: Colard Benjamin <caemirr@gmail.com
pkgname=ryzom-client-official
pkgver=1122
pkgrel=1
pkgdesc="Ryzom is a Free to Play MMORPG"
arch=('i686' 'x86_64')
license=('AGPL3' 'CC-BY-SA')
makedepends=('libsquish' 'libwww' 'luabind' 'cpptest' 'lua' 'openal')
url="https://sourceforge.net/projects/ryzom/files/ryzom_client.7z"
provides=('ryzom')

build()	{
	cd "${srcdir}/"
	wget -c https://sourceforge.net/projects/ryzom/files/ryzom_client.7z
	7zr x ryzom_client.7z 
	mv ryzom /opt/
	ln -s /opt/ryzom/ryzom_client /usr/bin/ryzom
}

package() {
    cd "${_build}"
    make DESTDIR="${pkgdir}" install
}
