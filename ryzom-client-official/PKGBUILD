# Maintainer: Colard Benjamin <caemirr@gmail.com>
pkgname=ryzom-client-official
pkgver=1122
pkgrel=1
pkgdesc="Ryzom is a Free to Play MMORPG This version static for playing on Official server"
arch=('i686' 'x86_64')
license=('AGPL3' 'CC-BY-SA')
makedepends=('libsquish' 'libwww' 'luabind' 'cpptest' 'lua' 'openal')
url="http://dev.ryzom.com"
source="https://sourceforge.net/projects/ryzom/files/ryzom_client.7z"
provides=('ryzom')
md5sums=('dd4d093e041fa86579a30ea2514484fb')
install=('ryzom-client-official.install')
build()	{

7zr e -o${pkgdir}/usr/local/share/games/ryzom ryzom_client.7z
ln -s ${pkgdir}/usr/local/game/ryzom/ryzom_client ${pkgdir}/usr/bin/ryzom
ln -s ${pkgdir}/usr/local/game/ryzom/ryzom_update.sh ${pkgdir}/usr/bin/ryzom_update

make install DESTDIR=$pkgdir || return 1
}

