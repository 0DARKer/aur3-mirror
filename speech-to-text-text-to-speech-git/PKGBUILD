# Maintainer: tailinchu <use_my_id at gmail dot com>

pkgname=speech-to-text-text-to-speech-git
pkgver=6.e4891fc
pkgrel=1
pkgdesc="taylorchu's speech-to-text-text-to-speech repo (git version)"
arch=('any')
url="http://github.com/taylorchu/speech-to-text-text-to-speech"
license=('GPL2')
depends=('bash' 'flac' 'alsa-utils' 'jshon' 'curl' 'python' 'mpg123')
makedepends=('git')
conflicts=()
provides=()
source=("git://github.com/taylorchu/speech-to-text-text-to-speech.git")
md5sums=('SKIP')

_gitroot="speech-to-text-text-to-speech"

pkgver () {
    cd "$srcdir/$_gitroot"
    echo "$(git rev-list --count HEAD).$(git describe --always)"
}

package() {
    cd "$srcdir/$_gitroot"
    make PREFIX=/usr DESTDIR="$pkgdir" install
}

