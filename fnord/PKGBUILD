# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=fnord
pkgver=1.10
pkgrel=8
pkgdesc="Yet another small httpd"
arch=('i686')
url="http://www.fefe.de/fnord/"
license=("GPL")
depends=('glibc' 'ipsvd' 'runit')
install=fnord.install
source=(http://www.fefe.de/fnord/$pkgname-$pkgver.tar.bz2 
	fnord-service.tar.gz php.patch)

md5sums=('4c7d9f0e2b2f071d4687688f3018ba91' '1cbde8f1391c032f1fcfdebdb10b5790'\
         'cf021b32442a281a9b0264e2767f74be')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch < ../php.patch
  make DIET="$DIET"  CFLAGS="-Os -fomit-frame-pointer -DAUTH" || return 1
  install -d $startdir/pkg/usr/bin
  install -m 755 fnord fnord-idx fnord-cgi $startdir/pkg/usr/bin 
  install -d $startdir/pkg/etc/sv/fnord/
  install -d $startdir/pkg/etc/sv/fnord/log
  cd $startdir/src/fnord
  install -m 755 run $startdir/pkg/etc/sv/fnord
  install -m 755 log/run $startdir/pkg/etc/sv/fnord/log
}
