pkgname=lib32-gnome-vfs
pkgver=2.24.4
pkgrel32=1
pkgrel=1
pkgdesc="The GNOME Virtual File System"
arch=('x86_64')
url="http://www.gnome.org"
depends=('lib32-avahi' 'lib32-bzip2' 'lib32-gconf' 'hal' 'lib32-gtk2' 'lib32-gnutls' 'lib32-heimdal' 'lib32-smbclient')
license=('GPL' 'LGPL')
groups=lib32
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
md5sums=('8bb35d3d58c457c845a2f5e403118b94')

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr
  cp -rPf ${startdir}/src/usr/lib ${startdir}/pkg/opt/lib32/usr
  rm -Rf {${startdir}/pkg/opt/lib32/usr/lib/pkgconfig,${startdir}/pkg/opt/lib32/usr/lib/gnome-vfs-2.0/include}
}
