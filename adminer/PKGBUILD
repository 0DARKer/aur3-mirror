pkgname=adminer
pkgver=3.2.2
pkgrel=1
pkgdesc="A full-featured MySQL management tool written in PHP"
arch=('any')
license=('Apache License, Version 2.0')
depends=('php' 'mysql')
url="http://www.adminer.org"
source=("http://downloads.sourceforge.net/project/adminer/Adminer/Adminer%203.2.2/adminer-3.2.2.zip?r=http%3A%2F%2Fwww.adminer.org%2F&ts=1301861795&use_mirror=switch")

md5sums=('411de41c2f7c6fdab83f0e1fb933bd46')


build() {
  cd $srcdir/${pkgname}-${pkgver}/$pkgname

  mkdir -p $pkgdir/srv/http/$pkgname
  mv * $pkgdir/srv/http/$pkgname
}
 
