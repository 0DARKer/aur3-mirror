# Maintainer: Sabart Otto - Seberm <seberm[at]gmail[dot]com>

pkgname=adminer
pkgver=3.2.1
pkgrel=1
pkgdesc="Adminer (formerly phpMinAdmin) is a full-featured MySQL management tool written in PHP."
arch=('any')
license=('Apache License, Version 2.0')
depends=('php' 'mysql')
url="http://www.adminer.org"
source=("http://downloads.sourceforge.net/project/adminer/Adminer/Adminer%203.2.1/adminer-3.2.1.zip?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Fadminer%2Ffiles%2FAdminer%2FAdminer%25203.2.1%2F&ts=1301079825&use_mirror=sunet")

md5sums=('1f2489158b261e4ccc16ea63a9012a0e')


build() {
  cd $srcdir/${pkgname}-${pkgver}/$pkgname

  mkdir -p $pkgdir/srv/http/$pkgname
  mv * $pkgdir/srv/http/$pkgname
}
 
