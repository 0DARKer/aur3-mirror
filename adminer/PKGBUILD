# Maintainer: Otto Sabart <seberm@gmail.com>

pkgname=adminer
pkgver=3.1.0
pkgrel=1
pkgdesc="Adminer (formerly phpMinAdmin) is a full-featured MySQL management tool written in PHP."
arch=('i686' 'x86_64')
license=('Apache License, Version 2.0')
depends=('php' 'mysql')
url="http://www.adminer.org"
source=("http://downloads.sourceforge.net/project/adminer/Adminer/Adminer%203.1.0/adminer-3.1.0.zip?r=http%3A%2F%2Fwww.adminer.org%2F&ts=1292152976&use_mirror=mesh")


md5sums=('b0f8333316641dcf58846829107ded22')


build() {
  cd $srcdir/${pkgname}-${pkgver}/$pkgname

  mkdir -p $pkgdir/srv/http/$pkgname
  mv * $pkgdir/srv/http/$pkgname
}
 
