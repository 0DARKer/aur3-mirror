# Maintainer: Sabart Otto - Seberm <seberm[at]gmail[dot]com>

pkgname=adminer
pkgver=3.2.2
pkgrel=1
pkgdesc="A full-featured MySQL management tool written in PHP"
arch=('any')
license=('Apache License, Version 2.0')
depends=('php' 'mysql' 'apache')
url="http://www.adminer.org"
install=adminer.install
source=("http://downloads.sourceforge.net/project/adminer/Adminer/Adminer%203.2.2/adminer-3.2.2.zip?r=http%3A%2F%2Fwww.adminer.org%2F&ts=1301861795&use_mirror=switch")

md5sums=('411de41c2f7c6fdab83f0e1fb933bd46')


build() {

  _instdir=$pkgdir/usr/share/webapps/$pkgname
  mkdir -p ${_instdir} $pkgdir/etc/webapps/$pkgname $pkgdir/etc/httpd/conf/extra
 
  cd ${_instdir}
  cp -ra $srcdir/${pkgname}-${pkgver}/$pkgname/* .
 
  # It's similar to phpMyAdmin
  cat >$pkgdir/etc/webapps/$pkgname/apache.example.conf <<EOF
	Alias /$pkgname "/usr/share/webapps/$pkgname"
	<Directory "/usr/share/webapps/$pkgname">
		AllowOverride All
		Options FollowSymlinks
		Order allow,deny
		Allow from all
	</Directory>
EOF

  cat $pkgdir/etc/webapps/$pkgname/apache.example.conf > $pkgdir/etc/httpd/conf/extra/httpd-${pkgname}.conf
#  echo "Include conf/extra/httpd-${pkgname}.conf" >> $pkgdir/etc/httpd/conf/httpd.conf

}
