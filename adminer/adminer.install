TEXT='
If you want to access adminer interface by your apache, run following command as root:\n
echo "Include conf/extra/httpd-adminer.conf" >> /etc/httpd/conf/httpd.conf\n

And restart your apache running "/etc/rc.d/httpd restart"\n

After you can browse adminer on http://localhost/adminer\n';


post_install() {
	
	echo -e $TEXT;
}	

post_upgrade() {
	
	echo -e $TEXT;
}
