# Contributor: Jesse Jaara <jesse.jaara@gmail.com>
pkgname=xorcurses
pkgver=0.1.2
pkgrel=1
pkgdesc="A curses remake for Linux of Xor by Astral Software."
arch=(i686 x86_64)
url="http://www.jwm-art.net/dark.php?p=XorCurses"
license=('GPL')
depends=('ncurses')
source=(http://www.jwm-art.net/art/archive/XorCurses-$pkgver.tar.bz2)
md5sums=('b5056fcc8a5e2028a20f1fab5ba8c714')

build() {
  cd "$srcdir/XorCurses-$pkgver"

  mv Makefile Makefile.old
  sed s:PREFIX=/usr/local/:PREFIX=/usr/: <Makefile.old >Makefile

  make || return 1
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/XorCurses/maps
  make PREFIX=$pkgdir/usr/ install
}

