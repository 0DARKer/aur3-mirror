# -*- shell-script -*-
# Arch Linux package build script
#
# Contributor: Vsevolod Balashov <vsevolod@balashov.name>
# Contributor: Egor Kuropatkin <egor.k8n@gmail.com>
#
name=hg-git
pkgname=$name-hg
pkgver=20130513
pkgrel=1
pkgdesc="the Hg-Git mercurial plugin"
arch=(any)
url="http://hg-git.github.com/"
license=('GPL2')
install=hg-git-hg.install
depends=('mercurial' 'python-dulwich')
makedepends=('mercurial')
source=('hg+https://bitbucket.org/durin42/hg-git'
        'hg-git-hg.install')
md5sums=('SKIP'
        '17c1fcf32905acd4626d290ec76db6cb')


package() {
    cd $name
    python2 setup.py install --prefix=/usr --root=$pkgdir
}
