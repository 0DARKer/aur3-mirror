# -*- shell-script -*-
# Arch Linux package build script
#
# Contributor: Vsevolod Balashov <vsevolod@balashov.name>
#
# $Id$

name=hg-git
pkgname=$name-hg
pkgver=359
pkgrel=1
pkgdesc="the Hg-Git mercurial plugin"
arch=(any)
url="http://hg-git.github.com/"
license=('GPL2')
install=hg-git-hg.install
depends=('mercurial' 'python-dulwich-git')
makedepends=('mercurial')

_hgroot="http://bitbucket.org/durin42"
_hgrepo=$name

build() {
  cd "$srcdir/$name"
  python2 setup.py install --prefix=/usr --root=$startdir/pkg || return 1
}
