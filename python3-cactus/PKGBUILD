pkgname=python3-cactus
pkgver=2012.11.4
pkgrel=2
pkgdesc='Interface modules for CACTUS (CADD Group Chemoinformatics Tools and User Services).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-cactus"
depends=(python3 python-openbabel python3-memoizedb)
source=(
  http://xyne.archlinux.ca/projects/python3-cactus/archives/python3-cactus-2012.11.4.tar.xz
  http://xyne.archlinux.ca/projects/python3-cactus/archives/python3-cactus-2012.11.4.tar.xz.sig
)
sha512sums=(
  cdb8ed54f1028e0e5309454967ecf318e8e3b6dc50b9fa28ff2b428f65f089976167a728537110c1434c50c92890dc37800f06808db92c22ee5f9b7d054210e2
  5ea874ec97c910b4776fa5f79e01c7e7ef38005fff48d5d7435f6a5dc57ab77e3db03aa2804f684383cae5de705603fa0fc97f885f8ba9148c4cddbd38a57e07
)
md5sums=(
  8c2c18b923bb17cb6f01f74a14abe5d2
  d7462cba61f4f15c75f5c5c82755c148
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for script_ in cactus-*
  do
    install -Dm755 $script_ "$pkgdir"/usr/bin/$script_
  done
}


