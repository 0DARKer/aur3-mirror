pkgname=python3-cactus
pkgver=2012.11.4
pkgrel=2
pkgdesc='Interface modules for CACTUS (CADD Group Chemoinformatics Tools and User Services).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-cactus"
depends=(python3 python-openbabel python3-memoizedb)
source=(
  http://xyne.archlinux.ca/projects/python3-cactus/src/python3-cactus-2012.11.4.tar.xz
  http://xyne.archlinux.ca/projects/python3-cactus/src/python3-cactus-2012.11.4.tar.xz.sig
)
sha512sums=(
  f966dd613df5888ecb664237722c9d9868723d69b0c1b3478bc13ebe8f90d8a56de46fa85c811430c950b804b1f1ab6b35f004d5b1dc84bc1de60501b1eec087
  9878d5306f064590a6d74a5f8a56a0293dbc24f6d4d87a664ee96ed1cf39355c67e8087bd23b1aa16cd2eaf8238e6e93490c1b8185d26a14d9cfb03d94bb014a
)
md5sums=(
  cf4c0ae3df54ce2f9803eb695acb152b
  13a763f68cd8d000d0ee7e3e489f2326
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for script_ in cactus-*
  do
    install -Dm755 $script_ "$pkgdir"/usr/bin/$script_
  done
}


