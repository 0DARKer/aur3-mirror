pkgname=mpdviz
pkgver=0.4.3
pkgrel=1
pkgdesc='Standalone console MPD visualizer'
arch=('x86_64' 'i686' 'ARM')
url='https://github.com/neeee/mpdviz'
license=('custom:MIT')
makedepends=('go')
depends=('fftw')
source=("$pkgname-$pkgver::git+git://github.com/neeee/${pkgname}.git#tag=$pkgver")
sha256sums=('SKIP')

prepare() {
	cd "$srcdir/$pkgname-$pkgver"
	export GOPATH="$srcdir"
	go get -d
}

build() {
	cd "$srcdir/$pkgname-$pkgver"
	export GOPATH="$srcdir"
	go clean
	go build -o mpdviz
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	install -T -Dm755 mpdviz "$pkgdir/usr/bin/mpdviz"
	install -T -Dm755 LICENSE "$pkgdir/usr/share/licenses/mpdviz/LICENSE"
}
