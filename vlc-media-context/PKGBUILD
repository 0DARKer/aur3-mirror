basename=vlc
extname=media-context
realname=Media-Context
pkgname=${basename}-${extname}
pkgver=0.2.0
pkgrel=1
pkgdesc="Displays contextual information about the currently playing media"
vlcaddnum=143241
arch=("any")
url="http://${realname}.Xavion.name"
license=("GPL3")
depends=("${basename}" lua)
options=(!emptydirs)
#source=(http://dl.dropbox.com/u/106000/Programming/Lua/${realname}/${realname}.lua)
source=(http://addons.videolan.org/CONTENT/content-files/${vlcaddnum}-${realname}.lua)

package() {
	cd "${srcdir}"
	
	#install -D ${realname}.lua ${pkgdir}/usr/lib/${basename}/lua/extensions/${realname}.lua
	install -D ${vlcaddnum}-${realname}.lua ${pkgdir}/usr/lib/${basename}/lua/extensions/${realname}.lua
}

sha1sums=('36a5f7cdedd7ca396928076387bb2eab02acc877')
