_basename_=vlc
_realname_=Media-Context
pkgname=${_basename_}-media-context
pkgver=0.6.3
pkgrel=1
pkgdesc="Displays contextual information about the currently playing media"
_vlcaddnum_=143241
arch=("any")
url="http://addons.videolan.org/content/show.php/Media+Context?content=143241"
license=("GPL3")
depends=("${_basename_}>=2.0.1" lua)
options=(!emptydirs)
#source=(http://dl.dropbox.com/u/106000/Programming/Lua/${_realname_}/${_realname_}.lua)
source=(http://addons.videolan.org/CONTENT/content-files/${_vlcaddnum_}-${_realname_}.lua)

package() {
	cd "${srcdir}"
	
	#install -m 644 -D ${_realname_}.lua ${pkgdir}/usr/lib/${_basename_}/lua/extensions/${_realname_}.lua
	install -m 644 -D ${_vlcaddnum_}-${_realname_}.lua ${pkgdir}/usr/lib/${_basename_}/lua/extensions/${_realname_}.lua
}

sha1sums=('768f5acff0ae618f2ef5037e4c64cc32ee838f29')
