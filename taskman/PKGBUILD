pkgname=taskman
pkgver=0.1
pkgrel=1
pkgdesc=""
arch=('x86_64')
url="https://mega.co.nz/#!Vc9C1SLI!7fXX3gOlGL4myuzbyZMEs4EXaGMKP5IuGSu6w0xC7pw"
license=('GPL')
groups=()
depends=('python')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=($pkgname-$pkgver.tar.gz)
md5sums=()

package() {
  cd "src"
  gendesk --pkgname "$pkgname" --pkgdesc "$pkgdesc" -f --exec="python2 /usr/lib/python2.7/site-packages/taskman.py"
  install -Dm644 "$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

# vim:set ts=2 sw=2 et:
md5sums=('8b0ea86f0c94d9a7b8e4cb347885d09b')
