pkgname=bacon
pkgver=0.14.1
pkgrel=1
pkgdesc="Tool for downloading CyanogenMod ROMs for Android devices"
arch=('i686' 'x86_64')
url="http://github.com/natediddy/${pkgname}"
license=('GPL3')
depends=('curl')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
#install=
source=(https://github.com/downloads/natediddy/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('f5f708c9788bccc10e085995b5aca2e6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
