pkgname=gmp-video
pkgver=hg_latest
pkgrel=5
pkgdesc="MPlayer frontend in Vala and GTK3"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPL')
makedepends=('vala')
depends=('gtk3' 'mplayer')
source=(https://bitbucket.org/simargl/alphaos/get/tip.tar.gz)
md5sums=('SKIP')
options=(!strip)

package() {
  cd "$srcdir"/*-alphaos-*/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}