pkgname=gmp-video
pkgver=0.618274ed1cf4
pkgrel=1
pkgdesc="Graphical frontend for MPlayer. Program is written in Vala/GTK3."
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPL')
depends=('mplayer' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme' 'libmp-control')
makedepends=('vala' 'mercurial')
source=(alphaos::hg+https://bitbucket.org/simargl/alphaos)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo "$(hg identify -n).$(hg identify -i)"
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
