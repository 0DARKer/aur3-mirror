# Maintainer: L42y <423300@gmail.com>
pkgname=thunderbird-miramar
_basename=thunderbird
_buildname=miramar
pkgver=3.3
_subver=a2
pkgrel=1
pkgdesc="Miramar is a preview for the next major version of Thunderbird"
arch=('i686')
url="http://www.mozillamessaging.com"
license=('GPL')
depends=('gtk2' 'gcc-libs' 'mozilla-common' 'nss' 'libxt' 'shared-mime-info' 'alsa-lib' 'dbus-glib' 'hunspell' 'sqlite3>=3.7.4')
optdepends=('libcanberra: for sound support')
provides=('thunderbird')
backup=()
source=(http://ftp.halifax.rwth-aachen.de/mozilla/$_basename/releases/$pkgver$_subver/linux-i686/en-US/$_buildname-$pkgver$_subver.tar.bz2
        thunderbird-miramar.desktop)
md5sums=('5751f8d9f54ce003019a8596fb41bddd'
         'd39ed4292e6dffdb5633dc1ffdb788e3')

package() {
  mkdir -p "${pkgdir}"/{usr/{bin,share/applications},opt}
  cp -r thunderbird "${pkgdir}/opt/${pkgname}"

  ln -s /opt/${pkgname}/thunderbird "${pkgdir}/usr/bin/${pkgname}"
  install -m644 "${srcdir}"/thunderbird-miramar.desktop "${pkgdir}/usr/share/applications/"
}
