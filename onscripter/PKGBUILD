pkgname=onscripter
pkgver=20110111
pkgrel=1
pkgdesc="A game engine for visual novels"
arch=('i686' 'x86_64')
url="http://onscripter.sourceforge.jp/onscripter.html"
license=('GPL')
depends=('bzip2' 'sdl_image' 'sdl_mixer' 'sdl_ttf')
source=(http://onscripter.sourceforge.jp/$pkgname-$pkgver.tar.gz \
        Makefile.diff)
md5sums=('4912ddd546e7be74df15f800278c30ba' '35413ec22808e0439f67baf101c9de03')

build() {
  cd $pkgname-$pkgver

  patch -Np0 -i ../Makefile.diff || return 1

  make -f Makefile.Linux || return 1
  mkdir -p $pkgdir/usr/bin
  install -m755 onscripter $pkgdir/usr/bin/
}
