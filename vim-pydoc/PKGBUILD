pkgname=vim-pydoc
pkgver=1.3.6
_srcid=14691
_name=pydoc.vim
pkgrel=1
pkgdesc="Search and view python documentation from within vim (uses pydoc)"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=910"
license=('GPL')
groups=('vim-plugins')
# Change python2 to python if you're only using it with pydoc3
depends=('vim' 'python2')
source=(${_name}::http://www.vim.org/scripts/download_script.php?src_id=${_srcid})
md5sums=('a2eb752f2564ae036f14e92497af3f5e')

build() {
    true
}

package() {
    install -Dm644 ${srcdir}/${_name} \
        ${pkgdir}/usr/share/vim/vimfiles/ftplugin/python/${_name}
}
md5sums=('bd02d894bb3a0bd0ece8b64252973b79')
