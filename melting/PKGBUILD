pkgname=melting
pkgver=4.2h
_pkgver=${pkgver/./_}
pkgrel=1
pkgdesc="computing the melting temperature of nucleic acid duplex"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.ebi.ac.uk/~lenov/meltinghome.html"
source=(http://www.ebi.ac.uk/~lenov/SOFTWARES/${pkgname}${_pkgver}.tar.gz
	makefile.unices.diff)

build() {
	cd ${srcdir}/MELTING/
	patch -p0 -i ../makefile.unices.diff
	cp makefile.unices makefile
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
	rm ${pkgdir}/usr/bin/tkmelting.pl || return 1
}

md5sums=('5f1b4f3ddc75d68e0876616a21906a17'
         '9ab07b5cdd6b0f83112eb1db6e0758a5')
