build ()
{
    if [ -d /etc/splash/tuxonice ]; then
        add_full_dir /etc/splash/tuxonice
        add_binary /usr/sbin/tuxoniceui_fbsplash /sbin/suspend2ui
    else
        add_binary /usr/sbin/tuxoniceui_text /sbin/suspend2ui
    fi
    SCRIPT="userui"
}

help ()
{
cat <<HELPEOF
  This hook adds the tuxonice userui to your initramfs. If
  /etc/splash/tuxonice exists, it will add the fbsplash ui,
  otherwise the text ui will be added.
HELPEOF
}
