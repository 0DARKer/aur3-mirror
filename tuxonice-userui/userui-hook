# vim:set ft=sh:
run_hook ()
{
    tuxonice_sys="/sys/power/tuxonice"
    tuxoniceui_cmd="/usr/sbin/tuxoniceui"

    if [ -d $tuxoniceui_sys -a -x $tuxoniceui_cmd ]; then
        if [ -c /dev/fb0 -a -d /etc/splash/tuxonice ];
            tuxoniceui_opt="-f"
        fi

        echo $tuxoniceui_cmd $tuxoniceui_opt > $tuxoniceui_sys/user_interface/program
    fi
}
