pkgname=lxc-git
_pkgname=lxc
_gitname=${_pkgname}
pkgver=1.0.0.beta2.66.g032e28b
pkgrel=1
pkgdesc="Linux Containers"
arch=('i686' 'x86_64')
url="http://linuxcontainers.org"
license=('LGPL')
provides=($_pkgname)
conflicts=($_pkgname)
source=("git://github.com/lxc/lxc")
md5sums=("SKIP")

pkgver() {
  cd "$_gitname"
#  git --no-pager describe --tags | sed 's:-:.:g'
  git --no-pager describe --tags | sed 's:^lxc-::' | sed 's:-:.:g'
}

build() {
  cd "$_gitname"
  ./autogen.sh
  ./configure --prefix=/usr --libexecdir=/usr/bin --sysconfdir=/etc \
    --localstatedir=/var --disable-doc --disable-apparmor
  make
}

package() {
  cd "$_gitname"
  make DESTDIR="$pkgdir/" install
  install -d -m755 "$pkgdir/var/lib/lxc"
}
