_pkgbasename=portaudio
pkgname=$_pkgbasename-pulse
pkgver=19_20071207
pkgrel=1
pkgdesc="A free, cross-platform, open source, audio I/O library (with pulse support)"
arch=('i686' 'x86_64')
url="http://www.portaudio.com/"
license=('custom')
depends=('jack-audio-connection-kit' 'libpulse')
conflicts=("$_pkgbasename")
provides=("$_pkgbasename")
options=('!libtool')
source=(http://www.portaudio.com/archives/pa_stable_v$pkgver.tar.gz portaudio-19-alsa_pulse.patch)
md5sums=('d2943e4469834b25afe62cc51adc025f'
         '8ce32fcd7555f2705657fc2017c7664d')

build() {
  cd "${srcdir}/${_pkgbasename}"
  patch -Nup1 < ../portaudio-19-alsa_pulse.patch
  ./configure --prefix=/usr
  make
}

package () {
  cd "${srcdir}/${_pkgbasename}"
  make DESTDIR=$pkgdir install

  install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
