pkgname=taeni
pkgver=hg_latest
pkgrel=3
pkgdesc="Terminal emulator based on GTK+ and VTE"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl/taeni"
license=('GPL')
makedepends=('vala')
depends=('vte3')
source=(https://bitbucket.org/simargl/$pkgname/get/tip.tar.gz)
md5sums=('SKIP')
options=(!strip)

package() {
  cd "$srcdir"/*-$pkgname-*
  make DESTDIR="$pkgdir/" install
}