# Maintainer: David Jurenka <arch.box NO-SP@M imx.jurenka DOT cz>
pkgname=vaiopower
pkgver=0.4.6
pkgrel=1
pkgdesc="Tool for power management of Sony Vaio laptop devices"
arch=(any)
url="http://vaio-utils.org/power/"
license=('custom:ISC')
depends=(sh acpid pm-utils pciutils)
backup=(etc/vaiopower.conf)
install=vaiopower.install
source=(http://vaio-utils.org/download/$pkgname-$pkgver.tar.gz)
md5sums=(61cc3476348291f978dbbb417a2111df)
sha256sums=(a66194daf33ad3041afd39121ddd174f806cdee7cd86ff853a3a0fd16e42a2c6)

build() {
  :
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make prefix=/usr DESTDIR="$pkgdir/" copy
  # rc.d script
  install -d "${pkgdir}/etc/rc.d"
  install "init-scripts/generic/${pkgname}" "${pkgdir}/etc/rc.d"
  # license
  install -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m 0644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}"
}
