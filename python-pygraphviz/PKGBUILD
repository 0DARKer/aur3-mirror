pkgname=python-pygraphviz
_realname=pygraphviz
pkgver=1.0
pkgrel=3
pkgdesc='PyGraphviz is a Python interface to the Graphviz graph layout and visualization package.'
arch=('i686' 'x86_64')
license=('GNU_LGPL')
url="https://networkx.lanl.gov/"
depends=('python2>=2.4' 'graphviz')
conflicts=('pygraphviz')
replaces=('pygraphviz')
provides=('pygraphviz')

source=(https://networkx.lanl.gov/download/${_realname}/${_realname}-$pkgver.tar.gz)
md5sums=('0ae06cd91ef541c10366f477078ddaa5')

build() {
  cd $srcdir/${_realname}-$pkgver/

  python2 setup.py install --prefix=/usr --root=$pkgdir
}
