pkgname=android-platform-6
pkgver=2.0.1_r01
pkgrel=1
pkgdesc='Android SDK Platform, API-6'
arch=('any')
url="http://developer.android.com/sdk/index.html"
license=('custom')
depends=('android-sdk')
source=("http://dl-ssl.google.com/android/repository/android-${pkgver}-linux.zip")
sha1sums=('ce2c971dce352aa28af06bda92a070116aa5ae1a')

package() {
  mkdir -p "${pkgdir}/opt/android-sdk/platforms/"
  mv "${srcdir}/android-${pkgver}-linux" "${pkgdir}/opt/android-sdk/platforms/android-6"
}
