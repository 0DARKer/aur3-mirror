# Maintainer: # Maintainer: crazyelf5

pkgname=mint-z-theme
pkgver=20111105
pkgrel=1
pkgdesc="Linux Mint GTK2/GTK3 and GNOME Shell theme based on Zukitwo, Faience, Adwaita, Faenza and others"
arch=('i686' 'x86_64')
url="https://github.com/linuxmint/mint-z-theme"
license=('GPL')
depends=('gtk-engine-murrine' 'gtk-engine-unico')
makedepends=('git')

_gitroot="git://github.com/linuxmint/mint-z-theme.git"
_gitname=${pkgname}

build() {
  cd "${srcdir}"

  msg "Connecting to GIT server...."
  if [ ! -d ${_gitname} ]; then
    git clone ${_gitroot} ${_gitname}
  else
    cd ${_gitname} && git pull origin
  fi
  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r "${srcdir}"/${pkgname}/usr "${pkgdir}"
}
