# Maintainer: Amr Hassan <amr.hassan@gmail.com>
pkgname=utf8cpp
pkgver=2.3.1
pkgrel=2
pkgdesc="UTF-8 with C++ in a Portable Way"
url="http://utfcpp.sourceforge.net/"
arch=('x86_64' 'i686')
license=('Custom')
source=("http://garr.dl.sourceforge.net/project/utfcpp/utf8cpp_2x/Release%202.3.1/utf8_v2_3_1.zip")

package() {
  cd "${srcdir}/source"
  mkdir -p "$pkgdir/usr/include/"
  install *.h "$pkgdir/usr/include/"
  mkdir -p "$pkgdir/usr/include/utf8"
  install utf8/*.h "$pkgdir/usr/include/utf8/"
}

md5sums=('4ce7db7500641f5542308b6b7c066eb6')
