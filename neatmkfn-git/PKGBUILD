# Maintainer: aksr <aksr at t-com dot me>
pkgname=neatmkfn-git
pkgver=0.r29.c576e2a
pkgrel=1
epoch=
pkgdesc="Creates font description files for neatroff. It used to be called mktrfn."
arch=('i686' 'x86_64')
url="http://repo.or.cz/w/neatmkfn.git"
license=('custom')
groups=()
depends=('')
makedepends=('git')
optdepends=('neatroff')
checkdepends=()
provides=()
conflicts=()
replaces=('mktrfn')
backup=()
options=()
changelog=
install=
source=('neatmkfn-git::git://repo.or.cz/neatmkfn.git')
noextract=()
md5sums=('SKIP')
sha1sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"

  make all
}

package() {
  cd "$srcdir/$pkgname"

  install -Dm755 mkfn          $pkgdir/usr/bin/mkfn
  install -Dm755 gen.sh        $pkgdir/usr/share/doc/$pkgname/gen.sh
  install -Dm644 glyphlist.txt $pkgdir/usr/share/doc/$pkgname/glyphlist.txt
  install -Dm644 README        $pkgdir/usr/share/doc/$pkgname/README
}

# vim:set ts=2 sw=2 et:
