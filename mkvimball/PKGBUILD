# Maintainer: Kwpolska <kwpolska@gmail.com>

pkgname=mkvimball
pkgver=1
pkgrel=1
pkgdesc="A vimball generator"
arch=('i686' 'x86_64')
url="http://mysite.verizon.net/astronaut/src/index.html#MKVIMBALL"
license=('unspecified')
depends=('vim')
source=("http://mysite.verizon.net/astronaut/src/mkvimball.tar.gz")
md5sums=('5822baf3be7ce6eed984d8877495491b')

build() {
    cd "$srcdir/MKVIMBALL"
    make
}

package() {
    cd "$srcdir/MKVIMBALL"
    mkdir -p "$pkgdir/usr/bin"
    cp mkvimball "$pkgdir/usr/bin"
}

# vim: ft=sh syn=sh
