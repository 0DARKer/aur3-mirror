# Contributor: noonov <noonov@gmail.com>

pkgname=lohit-fonts
pkgver=2.4.6
pkgrel=1
pkgdesc="Indic TrueType fonts from Fedora Project"
arch=('any')
url="https://fedorahosted.org/lohit/"
license=('GPL2' 'custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
_fhosted="https://fedorahosted.org/releases/l/o/lohit"
_pravins="http://pravins.fedorapeople.org/lohit"
source=(
  ${_fhosted}/lohit-devanagari-ttf-2.4.5.tar.gz
  ${_fhosted}/lohit-gujarati-ttf-2.4.5.tar.gz
  ${_fhosted}/lohit-kannada-ttf-2.4.6.tar.gz
  ${_fhosted}/lohit-tamil-ttf-2.4.5.tar.gz
  ${_fhosted}/lohit-telugu-ttf-2.4.6.tar.gz
  ${_fhosted}/lohit-malayalam-ttf-2.4.5.tar.gz
  ${_fhosted}/lohit-punjabi-ttf-2.4.4.tar.gz
  ${_fhosted}/lohit-oriya-ttf-2.4.4.tar.gz
	${_fhosted}/lohit-assamese-ttf-2.4.3.1.tar.gz
  ${_fhosted}/lohit-bengali-ttf-2.4.3.1.tar.gz
  ${_pravins}/hindi/lohit-hindi-ttf-2.4.3.tar.gz
  ${_pravins}/kashmiri/lohit-kashmiri-ttf-2.4.3.tar.gz
  ${_pravins}/konkani/lohit-konkani-ttf-2.4.3.tar.gz
  ${_pravins}/maithili/lohit-maithili-ttf-2.4.3.tar.gz
  ${_pravins}/marathi/lohit-marathi-ttf-2.4.3.tar.gz
  ${_pravins}/nepali/lohit-nepali-ttf-2.4.3.tar.gz
  ${_pravins}/sindhi/lohit-sindhi-ttf-2.4.3.tar.gz
)

package() {
  install -d "${pkgdir}"/usr/share/fonts/TTF
  install -d "${pkgdir}"/etc/fonts/{conf.avail,conf.d}

  install -m644 "${srcdir}"/*/*.conf "${pkgdir}/etc/fonts/conf.avail/"
  install -m644 "${srcdir}"/*/*.ttf  "${pkgdir}/usr/share/fonts/TTF/"

  cd "${pkgdir}/etc/fonts/conf.d"
  for config in ../conf.avail/*.conf; do
    ln -s ${config} .
  done

  install -D -m644 "${srcdir}"/lohit-kannada-ttf-*/COPYRIGHT \
    "${pkgdir}/usr/share/licenses/${pkgname}/COPYRIGHT"
}
