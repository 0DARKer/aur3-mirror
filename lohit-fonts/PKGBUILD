# Contributor: noonov <noonov@gmail.com>

pkgname=lohit-fonts
pkgver=2.4.5
pkgrel=1
pkgdesc="Indic TrueType fonts from Fedora Project"
arch=('any')
url="https://fedorahosted.org/lohit/"
license=('GPL2' 'custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(
  https://fedorahosted.org/releases/l/o/lohit/lohit-devanagari-ttf-${pkgver}.tar.gz
  https://fedorahosted.org/releases/l/o/lohit/lohit-gujarati-ttf-${pkgver}.tar.gz
  https://fedorahosted.org/releases/l/o/lohit/lohit-kannada-ttf-${pkgver}.tar.gz
  https://fedorahosted.org/releases/l/o/lohit/lohit-tamil-ttf-${pkgver}.tar.gz
  https://fedorahosted.org/releases/l/o/lohit/lohit-telugu-ttf-${pkgver}.tar.gz
  https://fedorahosted.org/releases/l/o/lohit/lohit-malayalam-ttf-${pkgver}.tar.gz
  https://fedorahosted.org/releases/l/o/lohit/lohit-punjabi-ttf-2.4.4.tar.gz
  http://pravins.fedorapeople.org/lohit/assamese/lohit-assamese-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/bengali/lohit-bengali-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/hindi/lohit-hindi-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/kashmiri/lohit-kashmiri-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/konkani/lohit-konkani-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/maithili/lohit-maithili-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/marathi/lohit-marathi-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/nepali/lohit-nepali-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/oriya/lohit-oriya-ttf-2.4.3.tar.gz
  http://pravins.fedorapeople.org/lohit/sindhi/lohit-sindhi-ttf-2.4.3.tar.gz
)

build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/*/*.ttf ${pkgdir}/usr/share/fonts/TTF

  install -d ${pkgdir}/etc/fonts/{conf.avail,conf.d}
  install -m644 ${srcdir}/*/*.conf ${pkgdir}/etc/fonts/conf.avail

  cd ${pkgdir}/etc/fonts/conf.d
  for _conf in ../conf.avail/*.conf; do
    ln -s ${_conf} .
  done

  install -D -m644 ${srcdir}/lohit-kannada-ttf-${pkgver}/COPYRIGHT \
    ${pkgdir}/usr/share/licenses/${pkgname}/COPYRIGHT
}

