# Contributor: noonov <noonov@gmail.com>

pkgname=lohit-fonts
pkgver=2.4.3
pkgrel=1
pkgdesc="Indic TrueType fonts from Fedora Project"
arch=('any')
url="https://fedorahosted.org/lohit/"
license=('GPL2' 'custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(
  http://pravins.fedorapeople.org/lohit/assamese/lohit-assamese-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/bengali/lohit-bengali-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/gujarati/lohit-gujarati-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/hindi/lohit-hindi-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/kannada/lohit-kannada-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/kashmiri/lohit-kashmiri-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/konkani/lohit-konkani-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/maithili/lohit-maithili-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/malayalam/lohit-malayalam-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/marathi/lohit-marathi-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/nepali/lohit-nepali-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/oriya/lohit-oriya-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/punjabi/lohit-punjabi-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/sindhi/lohit-sindhi-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/tamil/lohit-tamil-ttf-${pkgver}.tar.gz
  http://pravins.fedorapeople.org/lohit/telugu/lohit-telugu-ttf-${pkgver}.tar.gz
)

build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/*/*.ttf ${pkgdir}/usr/share/fonts/TTF

  install -d ${pkgdir}/etc/fonts/{conf.avail,conf.d}
  install -m644 ${srcdir}/*/*.conf ${pkgdir}/etc/fonts/conf.avail

  cd ${pkgdir}/etc/fonts/conf.d
  for _conf in ../conf.avail/*.conf; do
    ln -s ${_conf} .
  done

  install -D -m644 ${srcdir}/lohit-assamese-ttf-${pkgver}/COPYRIGHT \
    ${pkgdir}/usr/share/licenses/${pkgname}/COPYRIGHT
}

