# Maintainer: Nikita Nikishin <nnikishi@emich.edu>

pkgname=bindery
pkgver=20110226_5
pkgrel=1
pkgdesc="Interactive document binding tool for post-processed scanned images"
arch=(i686 x86_64)
url="http://blender3d.github.com/Bindery/"
license=('GPL')
depends=('python2' 'qt' 'python2-qt' 'python2-sip' 'python-imaging' 'djvulibre' 'minidjvu' 'tesseract')
makedepends=()
source=("https://github.com/Blender3D/Bindery/tarball/master")
conflicts=()

build() {
  cd "$srcdir"
  msg "Downloading latest tarball..."
  
  wget --no-check-certificate $source -O bindery-git.tar.gz
  msg "Finished download..."
}

package() {
  cd "$srcdir"
  tar -xf bindery-git.tar.gz
  mkdir $pkgdir/opt $pkgdir/usr $pkgdir/usr/bin
  
  mv Blender3D* $pkgdir/opt/bindery
  
  echo "#/bin/bash" > $pkgdir/usr/bin/bindery
  echo "cd /opt/bindery/" >> $pkgdir/usr/bin/bindery
  echo "python2 main.py" >> $pkgdir/usr/bin/bindery
  
  chmod +x $pkgdir/usr/bin/bindery
}
md5sums=('04f81f8e943e30d5f8ae0a5b4ecb1dcb')
