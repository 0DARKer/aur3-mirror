# Maintainer: Sebastien Luttringer <seblu+arch@seblu.net>

pkgname=deefuzzer
_pkgname=DeeFuzzer
pkgver=0.5.8
pkgrel=1
pkgdesc='Easy and instant media streaming tool'
arch=('any')
url='http://svn.parisson.org/deefuzzer'
license=('custom:CeCILL')
depends=('python2-distribute' 'python2-shout')
optdepends=('python2-twitter' 'python-tinyurl' 'python-pyliblo')
source=("http://debian.parisson.org/$_pkgname-$pkgver.tar.gz")
md5sums=('f6569ca33c1080e4fa8b66034230f8e5')

package() {
  cd $_pkgname-$pkgver
  python2 setup.py install --root="$pkgdir"

  # setup license
  install -D -m 644 License.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

