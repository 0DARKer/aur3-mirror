# Contributor: Alessio 'alexwizard' Sergi <alexwizard@email.it>

pkgname=gnome-themes-extras-svn
_realname=gnome-themes-extras
pkgver=510
pkgrel=1
pkgdesc="Extra themes for GNOME"
arch=('i686' 'x86_64')
url="http://svn.gnome.org/viewcvs/gnome-themes-extras/trunk"
license=('GPL')

depends=('gtk-engines-svn' 'librsvg>=2.20.0')
makedepends=('perlxml')
provides=('gnome-themes-extras')
conflicts=('gnome-themes-extras')
replaces=('gnome-themes-extras')
source=()
md5sums=()

_svntrunk="http://svn.gnome.org/svn/$_realname/trunk"
_svnmod=$_realname

build() {
  cd $startdir/src

  msg "Connecting to svn.gnome.org SVN server...."

  if [ ! -d ./$_svnmod ]; then
    svn co $_svntrunk $_svnmod -r $pkgver
  else
    (cd $_svnmod && svn up -r $pkgver)
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  [ -d ./$_svnmod-build ] && rm -rf ./$_svnmod-build
  cp -r ./$_svnmod ./$_svnmod-build
  cd ./$_svnmod-build

  ./autogen.sh && ./configure --prefix=/usr \
     --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

#  rm -rf $startdir/src/$_svnmod-build
}

# vim:set ts=2 sw=2 et:
