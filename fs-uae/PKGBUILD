#Maintainer: Sebastian Wolf < fatmike303 at gmail dot com >
pkgname=fs-uae
pkgver=1.2.1
pkgrel=1
pkgdesc="A multi-platform Amiga emulator based on UAE/WinUAE, with a focus on emulating games"
arch=(i686 x86_64)
url="http://fengestad.no/fs-uae"
license=GPL
depends=(sdl libpng openal zlib glib2 pulseaudio)
install=$pkgname.install
source=(
http://fengestad.no/${pkgname}/files/${pkgname}-${pkgver}.tar.gz
fs-uae.install
fs-uae.desktop
)
md5sums=(
4ecf2bddfe3971a3e96669c2311de8e2
71b4790258efdc71b09c956b503b0e3c
dbf674632f53456a3e58606f75decbb8
)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make || exit 1
	make install prefix=${pkgdir}/usr

	install -m644 ${startdir}/fs-uae.desktop ${pkgdir}/usr/share/applications/

	#install -m755 -d ${pkgdir}/usr/share/pixmaps/
	#install -m644 ${srcdir}/${pkgname}-${pkgver}/icon/fs-uae.ico ${pkgdir}/usr/share/pixmaps/
}
