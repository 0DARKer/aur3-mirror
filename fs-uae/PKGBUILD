#Contributor: Sebastian Wolf < fatmike303 at gmail dot com >
pkgname=fs-uae
pkgver=0.9.12u1
pkgrel=3
pkgdesc="A multi-platform Amiga emulator based on UAE/WinUAE, with a focus on emulating floppy-disk and CD-ROM based games"
arch=("i686" "x86_64")
url="http://fengestad.no/fs-uae"
license=GPL
depends=("sdl" "libpng" "openal" "zlib" "glib2" "pulseaudio")
install=$pkgname.install
source=( http://fengestad.no/${pkgname}/files/${pkgname}-${pkgver}.tar.gz
fs-uae.install
fs-uae.desktop
fs-uae )
md5sums=( "334f05bb99d2fc5a5bf027715843d1be"
"71b4790258efdc71b09c956b503b0e3c"
"df2b9975bfe4eda620e3525d054158cf"
"a202cd7b10b3193e6bdb2cbaece3b7c0" )

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make || exit 1
	make install prefix=${pkgdir}/usr

	mv ${pkgdir}/usr/bin/fs-uae ${pkgdir}/usr/bin/fs-uae.bin

	install -m755 ${startdir}/fs-uae ${pkgdir}/usr/bin/

	install -m755 -d ${pkgdir}/usr/share/applications/
	install -m644 ${startdir}/fs-uae.desktop ${pkgdir}/usr/share/applications/

	install -m755 -d ${pkgdir}/usr/share/pixmaps/
	install -m644 ${srcdir}/${pkgname}-${pkgver}/icon/fs-uae.ico ${pkgdir}/usr/share/pixmaps/
}
