# Maintainer: Ludovic Fauvet <etix@l0cal.com>
pkgname=msitools
pkgver=0.91
pkgrel=2
pkgdesc="A set of programs to inspect and build Windows Installer"
arch=('i686' 'x86_64')
url="http://ftp.gnome.org/pub/GNOME/sources/msitools/"
license=('GPL')
depends=('libgsf')
makedepends=('autoconf' 'automake' 'libgcab' 'intltool')
source=(http://ftp.gnome.org/pub/GNOME/sources/msitools/$pkgver/$pkgname-$pkgver.tar.xz makefile.patch)
sha256sums=('dbfcc6c608f25449051ef79fd54b908c8a223aacd056b553cf5c32abb52f73fe'
            'b86a3e2c957cd75fa2ddf5f9ed55e1c0b369c4773e44ddd16a84f5da916f9076')
options=(!libtool)

build() {
    cd $pkgname-$pkgver
    patch -p1 -i $srcdir/makefile.patch
    ./autogen.sh --prefix=/usr
    make
}

package() {
    cd $pkgname-$pkgver
    cp .libs/* .
    make DESTDIR="$pkgdir/" install
}
