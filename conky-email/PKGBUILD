# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=conky-email
pkgver=2.07
pkgrel=2
pkgdesc="A simple script to display the count of emails in conky."
arch=('i686' 'x86_64')
url="https://code.launchpad.net/~m-buck/+junk/conkyemail"
license=('GPL')
depends=('python')
install=${pkgname}.install
source=(https://launchpad.net/%7Em-buck/+archive/conky/+files/conkyemail_${pkgver}.tar.gz)
md5sums=('a88b00376257658a90326f6e37a00e9c')

build() {
  cd ${srcdir}/src
  python setup.py build 
  }
package()
{
  cd ${srcdir}/src
  python setup.py install --root=${pkgdir} 
  install -Dm644 README ${pkgdir}/usr/share/conkyemail/README 
}
