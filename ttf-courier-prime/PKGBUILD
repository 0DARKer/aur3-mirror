# Maintainer: Tammer Ibrahim <t at tammeri dot net>

pkgname=ttf-courier-prime
pkgver=20130130
pkgrel=1
pkgdesc="Monospace Courier font alternative optimized for screenplays, designed by Alan Dague-Greene for John August and Quote-Unquote Apps (http://quoteunquoteapps.com/)"
url="http://quoteunquoteapps.com/courierprime/"
license=('SIL Open Font License')
depends=('fontconfig' 'xorg-font-utils')
source=('http://quoteunquoteapps.com/downloads/courier-prime.zip')
install=ttf-courier-prime.install
arch=('any')
md5sums=('cf79336ce1cf439560a5364ab7856738')
         
package() {
    cd "$srcdir"
      install -dm755 "$pkgdir/usr/share/fonts/TTF"
      find . -type f -name \*.ttf -exec install -Dm644 '{}' \
        "$pkgdir/usr/share/fonts/TTF" \;
}
