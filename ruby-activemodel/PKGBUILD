# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-activemodel
pkgver=3.0.8
pkgrel=1
pkgdesc="A toolkit for building modeling frameworks like Active Record and Active Resource."
arch=(any)
url="http://www.rubyonrails.org/"
license=('MIT')
depends=('ruby' 'ruby-i18n' 'ruby-builder' 'ruby-activesupport')
source=(http://gems.rubyforge.org/gems/activemodel-$pkgver.gem)
noextract=(activemodel-$pkgver.gem)
md5sums=('a086791c03322edd6ec11f8320de5392')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" activemodel-$pkgver.gem
}
