# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-activemodel
_gemname=${pkgname#ruby-}
pkgver=3.2.0
pkgrel=1
pkgdesc="A toolkit for building modeling frameworks like Active Record and Active Resource."
arch=('any')
url="http://www.rubyonrails.org"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-activesupport' 'ruby-builder')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('0d53d1b750b8578dc3e9facbfac208e6')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
