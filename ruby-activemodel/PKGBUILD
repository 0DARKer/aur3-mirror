# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-activemodel
gemname=activemodel
pkgver=3.0.9
pkgrel=1
pkgdesc="A toolkit for building modeling frameworks like Active Record and Active Resource."
arch=(any)
url="http://www.rubyonrails.org/"
license=('MIT')
depends=('ruby' 'ruby-i18n' 'ruby-builder' 'ruby-activesupport')
source=(http://rubygems.org/downloads/${gemname}-${pkgver}.gem)
noextract=(${gemname}-${pkgver}.gem)
md5sums=('e4a6e36823707d2db7e831eb58f25b5a')

build() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${gemname}-${pkgver}.gem
}
