# Contributor: Corali Signs Co. <coralisigns[at]gmail[dot]com>

pkgname=gtkpod-git-nano5g
pkgver=20100118
pkgrel=1
pkgdesc="a platform independent GUI for Apple's iPod using GTK2 with Nano 5g support"
arch=(i686 x86_64)
license=('GPL')
url="http://gtkpod.sourceforge.net"
depends=('libgpod-kmaglione-git' 'libmp4v2' 'flac' 'libid3tag' 'gnome-vfs' 'libvorbis' 
'curl' 'libglade')
makedepends=('git' 'intltool')
conflicts=('gtkpod')
provides=('gtkpod')
source=()
md5sums=()

_gitroot=git://gtkpod.git.sourceforge.net/gitroot/gtkpod/gtkpod
_gitname=gtkpod

build() {
cd $startdir/src
git clone $_gitroot

cp -r $_gitname $_gitname-build
cd $_gitname
./autogen.sh
./configure --prefix=/usr
make || return 1
make DESTDIR=${startdir}/pkg install || return 1
rm -rf $startdir/src/$_gitname-build
}

