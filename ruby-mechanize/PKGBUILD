pkgname=ruby-mechanize
_gemname=mechanize
pkgver=1.0.0
pkgrel=1
pkgdesc="Automates interaction with websites, handling cookies, redirects and forms"
arch=(any)
url="http://mechanize.rubyforge.org/"
license=('GPL2')
depends=('ruby' 'ruby-nokogiri>=1.2.1')
makedepends=('rubygems')
source=(https://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('a3575ab47adf8c64eee1f7886ab52181')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
