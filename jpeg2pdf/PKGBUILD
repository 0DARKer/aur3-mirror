pkgname=jpeg2pdf
pkgver=0.12
_pkgver=0.1
pkgrel=4
pkgdesc="Convert a bunch of JPEG files to a PDF"
url="http://raa.ruby-lang.org/project/jpeg2pdf/"
license=('MIT')
arch=('i686' 'x86_64')
depends=('ruby')
source=(http://raa.ruby-lang.org/cache/jpeg2pdf/${pkgname}-${_pkgver}.tgz)
md5sums=('5e49eb014d0526d75568766274824e91')

build() {
  cd $startdir/src/${pkgname}-${pkgver}
  ruby install.rb all --prefix=$startdir/pkg/usr
}
