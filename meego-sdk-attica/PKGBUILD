# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=meego-sdk-attica
pkgver=0.2.80
pkgrel=1
_rpmver=1.20
pkgdesc='Qt library that implements the Open Collaboration Services API'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL2.1')
depends=('meego-sdk-qt')
makedepends=('cmake')
source=("http://download.kde.org/unstable/attica/attica-${pkgver}.tar.bz2")
md5sums=('7ae9c9058126bcbc6c9f8091dfa73bbf')

build() {
  export QTDIR="/opt/meego/meego-sdk-qt"

  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../attica-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/opt/meego/attica
  make
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}
