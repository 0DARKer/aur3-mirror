# Contributor: feufochmar <feufochmar@d-20.fr>
pkgname=ttf-eadui
pkgver=1.0
pkgrel=1
pkgdesc="A script font based on the hand of a famous eleventh-century scribe."
arch=('any')
url="http://openfontlibrary.org/files/psb6m/215"
license=('custom:OFL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=eadui.install
source=("http://openfontlibrary.org/content/psb6m/215/Eadui.ttf" "http://openfontlibrary.org/content/psb6m/215/OFL.txt")

build() {
  cd "$srcdir"
  install -D -m644 OFL.txt "$pkgdir"/usr/share/licenses/$pkgname/OFL
  mkdir -p  "$pkgdir"/usr/share/fonts/TTF
  install -m644 *.ttf "$pkgdir"/usr/share/fonts/TTF/
}
md5sums=('887de13d9df05d5044d1318aa98ffa82'
         'c12ff4868fb45a64325400ebbc2f7640')
