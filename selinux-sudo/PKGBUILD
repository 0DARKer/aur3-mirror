# Contributor: Allan McRae (allan <at> archlinux <dot> org)
# Contributor: Tom Newsom (Jeepster <at> gmx <dot> co <dot> uk)

pkgname=selinux-sudo
_origname=sudo
pkgver=1.7.4p5
pkgrel=1
pkgdesc="Give certain users the ability to run some commands as root with SELinux support"
arch=('i686' 'x86_64')
url="http://www.sudo.ws/sudo/"
license=('custom')
groups=('selinux' 'selinux-system-utilities')
depends=('glibc' 'selinux-pam' 'selinux-usr-libselinux')
conflicts=('sudo')
provides=('sudo=1.7.4')
backup=('etc/sudoers' 'etc/pam.d/sudo')
options=('!libtool' '!makeflags')
source=(ftp://ftp.sudo.ws/pub/sudo/${_origname}-${pkgver}.tar.gz
        sudo.pam)
md5sums=('4c8105507363371dea89ceb7c92187dd'
         '4e7ad4ec8f2fe6a40e12bcb2c0b256e3')

build() {
  cd "${srcdir}/${_origname}-${pkgver}"

  ./configure --prefix=/usr --with-pam --libexecdir=/usr/lib \
    --with-env-editor --with-all-insults --with-logfac=auth \
    --with-selinux
  make
}

package() {
  cd "${srcdir}/${_origname}-${pkgver}"
  install -dm755 "${pkgdir}/var/lib"

  make DESTDIR="${pkgdir}" install
  install -Dm644 "${srcdir}/sudo.pam" "${pkgdir}/etc/pam.d/sudo"

  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/sudo/LICENSE"
}
