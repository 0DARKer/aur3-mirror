# Maintainer: Ondrej Kipila <ok100@openmailbox.org>

pkgname=lyvi-git
_gitname=lyvi
pkgver=332.5870371
pkgrel=1
pkgdesc="Command-line lyrics (and more!) viewer"
url="http://ok100.github.io/lyvi/"
arch=(any)
license=('WTFPLv2')
depends=('python-glyr-git' 'python-pillow' 'python-psutil' 'python-urwid')
optdepends=('python-dbus: mpris support'
            'python-gobject: mpris support')
makedepends=('git')
source=('git+git://github.com/ok100/lyvi.git')
md5sums=("SKIP")

pkgver() {
  cd "$srcdir/$_gitname"
  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/$_gitname"
  python setup.py install --root=$pkgdir
}

# vim:set ts=2 sw=2 et:
