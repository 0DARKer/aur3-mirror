# Maintainer: eolianoe <eolianoe At GoogleMAIL DoT com>

pkgname=python2-requests-toolbelt
_pkgname=requests-toolbelt
pkgver=0.3.0
pkgrel=2
pkgdesc="A toolbelt of useful classes and functions to be used with python2-requests."
arch=('any')
url="http://toolbelt.rtfd.org/"
license=('Apache')
depends=('python2-requests')
source=("${_pkgname}-${pkgver}.zip::https://github.com/sigmavirus24/requests-toolbelt/archive/${pkgver}.zip")
md5sums=('cf0a2ff691b87ff017d40ef2d034015a')

build() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

