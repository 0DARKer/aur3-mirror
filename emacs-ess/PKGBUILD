# Maintainer: Stefan Husmann <Stefan-Husmann@t-online.de>
pkgname=emacs-ess
pkgver=13.09.1
_pkgver=13.09-1
pkgrel=2
pkgdesc="Emacs Speaks Statistics: A Universal Interface for Statistical Analysis"
url="http://ess.r-project.org/"
arch=('any')
license=('GPL')
depends=('emacs' 'r')
replaces=('ess')
provides=('ess')
install=ess.install
source=("http://ess.r-project.org/downloads/ess/ess-${_pkgver}.tgz")
md5sums=('95d90a591b0dfa16b6df43c85d952f67')

build() {
  cd $srcdir/ess-${_pkgver}
  make prefix=/usr
}
package() {
  cd $srcdir/ess-${_pkgver}
  make DESTDIR=$pkgdir/usr INFODIR=$pkgdir/usr/share/info/ install
  rm $pkgdir/usr/share/emacs/site-lisp/ess-site.el
  install -Dm644 lisp/ess-site.el $pkgdir/usr/share/emacs/site-lisp/ess-site.el
}
