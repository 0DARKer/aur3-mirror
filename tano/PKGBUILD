pkgname=tano
pkgver=20111223
pkgrel=1
pkgdesc="An open-source cross-platform IP TV player based on Qt and libvlc"
arch=('i686' 'x86_64')
url="http://tano.si/en/projects/tano-player"
license=('GPL')
depends=('vlc>=1.1' 'qt>=4.6' 'libvlc-qt')
makedepends=('cmake>=2.6' 'qt>=4.6' 'dbus>=1.4' 'libvlc-qt' 'desktop-file-utils')
source=()
md5sums=()

_gitroot='git://github.com/ntadej/tano.git'
_gitname='tano'
_buildir=${_gitname}-build

build() {
	cd ${srcdir}

	msg 'Connecting to GIT server...'
	if [ -d ${_gitname} ]; then
		cd ${_gitname} && git pull origin
		cd ..
	else
		git clone ${_gitroot}
	fi

	msg 'GIT checkout done or server timeout.'

	if [ -d ${_buildir} ]; then
		msg 'Cleaning previous build...'
		rm -rf ${_buildir}
	fi

	git clone ${_gitname} ${_buildir}
	cd ${_buildir}

	msg 'Running cmake...'

	cmake . -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_BUILD_TYPE=Release

	msg 'Done.'

	msg 'Starting make...'

	make || return 1
	make DESTDIR="${pkgdir}" install || return 1

	rm -rf ${srcdir}/${_buildir}
}

package() {
	cd ${srcdir}
	desktop-file-install -m 644 --dir ${pkgdir}/usr/share/applications/ ${_buildir}/${pkgname}.desktop
}
