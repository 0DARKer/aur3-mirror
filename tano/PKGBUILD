pkgname=tano
pkgver=0.8.1
pkgrel=2
pkgdesc="An open-source cross-platform IP TV player based on Qt and libvlc"
arch=('i686' 'x86_64')
url="http://projects.tano.si/en/player"
license=('GPL')
depends=('vlc>=1.1' 'qt>=4.6' 'libvlc-qt=0.5.1')
makedepends=('cmake>=2.6' 'qt>=4.6' 'dbus>=1.4' 'libvlc-qt=0.5.1' 'desktop-file-utils')
source=("http://sourceforge.net/projects/${pkgname}/files/Tano%20Player/${pkgver}/${pkgname}_${pkgver}_src.tar.gz")
md5sums=('85f9274855f2ef990aa2084f8683edfe')
_gitcommit=78a3b67

build() {
	cd "${srcdir}/ntadej-${pkgname}-${_gitcommit}"

	export LDFLAGS='-lX11'

	cmake . -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_BUILD_TYPE=Release

	make || return 1
	make DESTDIR="${pkgdir}" install || return 1
}

package() {
	cd "${srcdir}/ntadej-${pkgname}-${_gitcommit}"
	desktop-file-install -m 644 --dir ${pkgdir}/usr/share/applications/ ${pkgname}.desktop
}
