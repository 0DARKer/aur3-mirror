# Maintainer: Decrypted Epsilon <decrypted.epsilon@gmail.com>
pkgname=igv

# The version number for the software
pkgver=2.3.32

# The release number for the arch package, as fixes are added to the 
pkgrel=1

# The description of the package, should be about 80 characters long 
pkgdesc="IGV is a high-performance visualization tool for interactive exploration of large, integrated genomic datasets."

# The type of processor this software can build and work on. See 
arch=('i686' 'x86_64')

# The official website for the software your PKGBUILD will install
url="http://www.broadinstitute.org/software/igv/home"

# The License that the software is released under. See PKGBUILD#license
license=('GPL3')

depends=('java-runtime')

# Source for the package, you can specify a folder
source=("http://www.broadinstitute.org/igv/projects/downloads/IGV_$pkgver.zip")
md5sums=('5c76841b18f3bcd9fc9a0ead7780081b')

package() {    
  cd "$startdir"
  install -Dm755 $pkgname.sh "$pkgdir/usr/bin/$pkgname"
  install -Dm644 $pkgname.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
  install -Dm644 $pkgname.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"  
  cd "$srcdir/IGV_$pkgver"
  install -Dm644 $pkgname.jar "$pkgdir/usr/share/java/$pkgname/$pkgname.jar"  
  install -Dm644 batik-codec__V1.7.jar "$pkgdir/usr/share/java/$pkgname/batik-codec__V1.7.jar"  
  install -Dm644 goby-io-igv__V1.0.jar "$pkgdir/usr/share/java/$pkgname/goby-io-igv__V1.0.jar"      
}

