pkgname=quickly
pkgver=0.2.6
pkgrel=1
pkgdesc="A framework for building pygtk apps quickly"
arch=(i686)
url="https://wiki.ubuntu.com/Quickly"
license=('GPL')
depends=(glade gedit desktopcouch)
makedepends=('python-distutils-extra>=2.1.0')

# https://launchpad.net/ubuntu/karmic/+source/quickly/0.2.6/+files/quickly_0.2.6.tar.gz
source=(https://launchpad.net/ubuntu/karmic/+source/$pkgname/$pkgver/+files/${pkgname}_${pkgver}.tar.gz)
noextract=()
md5sums=() #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname"

  python setup.py install --root=$startdir/pkg || return 1
  #./configure --prefix=/usr
  #make || return 1
  #make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
md5sums=('00e8165787060810f1e5267b58d1e70b')
