# Contributor: Christoph Zeiler <rabyte*gmail>

pkgname=perl-date-pcalc
pkgver=1.2
pkgrel=1
pkgdesc="A Perl module for all kinds of date calculations based on the Gregorian calendar"
arch=('i686' 'x86_64')
url="http://catcode.com/date/pcalc.html"
license=('PerlArtistic' 'GPL')
depends=('perl>=5.002')
source=(http://catcode.com/date/Date-Pcalc-$pkgver.tar.gz)
md5sums=('1c09a09337c7d2e18a17898ca577c644')

build() {
  cd Date-Pcalc-$pkgver

  perl Makefile.PL
  make || return 1
  make DESTDIR="$pkgdir" install

  rm -f "$pkgdir"/usr/lib/perl5/core_perl/perllocal.pod
}

# vim:set ts=2 sw=2 et:
