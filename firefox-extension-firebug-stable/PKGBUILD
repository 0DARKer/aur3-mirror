# Maintainer: Frank Poehler <fp29129@googlemail.com>
pkgname=firefox-extension-firebug-stable
_short=firebug
_firefox_extension_id=firebug@software.joehewitt.com
pkgver=1.8.0
_series=1.8
pkgrel=1
pkgdesc="A wealth of development tools in a Firefox add-on. Edit, debug, and monitor CSS, HTML, and JavaScript live in any web page. Stable version for latest official Firefox (currently Version 5)."
arch=('any')
url="http://getfirebug.com/"
license=('BSD')
groups=()
depends=('firefox>=5.0')
makedepends=()
optdepends=()
provides=('firefox-extension-firebug' 'firefox-firebug')
conflicts=('firefox-extension-firebug-svn' 'firefox-firebug')
replaces=()
backup=()
options=()
install=
changelog=
source=(http://getfirebug.com/releases/"$_short/$_series/$_short-$pkgver".xpi)
noextract=()
sha256sums=('dc9bb72991dd0b447d0215392d9c0866d4647eadccb7646ef17ff9553821edd8')

build() {
  cd "$srcdir"
}

package() {
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  mv license.txt "$pkgdir/usr/share/licenses/$pkgname/"
  rm "$_short-$pkgver.xpi"
  mkdir -p "$pkgdir/usr/lib/firefox-5.0/extensions/$_firefox_extension_id"
  mv * "$pkgdir/usr/lib/firefox-5.0/extensions/$_firefox_extension_id/"
}

