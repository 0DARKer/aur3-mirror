# Maintainer: Frank Poehler <fp29129@googlemail.com>
pkgname=firefox-extension-firebug-stable
_short=firebug
_firefox_extension_id=firebug@software.joehewitt.com
pkgver=1.7.2
_series=1.7
pkgrel=1
pkgdesc="A wealth of development tools in a Firefox add-on. Edit, debug, and monitor CSS, HTML, and JavaScript live in any web page. Stable version for latest official Firefox (currently Version 4)."
arch=('any')
url="http://getfirebug.com/"
license=('BSD')
groups=()
depends=('firefox>=4.0')
makedepends=()
optdepends=()
provides=('firefox-extension-firebug')
conflicts=('firefox-extension-firebug-svn')
replaces=()
backup=()
options=()
install=
changelog=
source=(http://getfirebug.com/releases/"$_short/$_series/$_short-$pkgver".xpi)
noextract=()
sha256sums=('f8630eb1958c9996572686bc59c33e727debf086faa7758207a6a043da7b0864')

build() {
  cd "$srcdir"
}

package() {
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  mv license.txt "$pkgdir/usr/share/licenses/$pkgname/"
  rm "$_short-$pkgver.xpi"
  mkdir -p "$pkgdir/usr/lib/firefox-4.0/extensions/$_firefox_extension_id"
  mv * "$pkgdir/usr/lib/firefox-4.0/extensions/$_firefox_extension_id/"
}

