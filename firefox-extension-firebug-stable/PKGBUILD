# Maintainer: Frank Poehler <fp29129@googlemail.com>
pkgname=firefox-extension-firebug-stable
_short=firebug
_firefox_extension_id=firebug@software.joehewitt.com
pkgver=1.6.1
_series=1.6
pkgrel=1
pkgdesc="A wealth of development tools in a Firefox add-on. Edit, debug, and monitor CSS, HTML, and JavaScript live in any web page. Stable version for latest official Firefox (currently 3.6)."
arch=('any')
url="http://getfirebug.com/"
license=('BSD')
groups=()
depends=('firefox>=3.6.0')
makedepends=()
optdepends=()
provides=('firefox-extension-firebug')
conflicts=('firefox-extension-firebug-svn')
replaces=()
backup=()
options=()
install=
changelog=
source=(http://getfirebug.com/releases/"$_short/$_series/$_short-$pkgver".xpi)
noextract=()
md5sums=('f336240e73ecca4a491cb9bcd746bf08')

build() {
  cd "$srcdir"
}

package() {
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  mv license.txt "$pkgdir/usr/share/licenses/$pkgname/"
  rm "$_short-$pkgver.xpi"
  mkdir -p "$pkgdir/usr/lib/firefox-3.6/extensions/$_firefox_extension_id"
  mv * "$pkgdir/usr/lib/firefox-3.6/extensions/$_firefox_extension_id/"
}

