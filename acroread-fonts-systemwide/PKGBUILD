pkgname=acroread-fonts-systemwide
pkgver=9
pkgrel=2
pkgdesc="Following fonts from Adobe Acrobat Reader 8 and 9, installed for systemwide usage: Adobe Heiti Std, Adobe Ming Std, Adobe Myungjo Std, Adobe Pi Std, Adobe Song Std, Courier Std, Kozuka Gothic Pro-VI, Kozuka Mincho Pro-VI, Minion Pro, Myriad Pro"
url="http://www.adobe.com/products/acrobat/acrrasianfontpack.html"
source=("http://ardownload.adobe.com/pub/adobe/reader/unix/9.x/9.1/misc/FontPack910_chs_i486-linux.tar.bz2" \
        "http://ardownload.adobe.com/pub/adobe/reader/unix/9.x/9.1/misc/FontPack910_cht_i486-linux.tar.bz2" \
	"http://ardownload.adobe.com/pub/adobe/reader/unix/9.x/9.1/misc/FontPack910_kor_i486-linux.tar.bz2" \
	"http://ardownload.adobe.com/pub/adobe/reader/unix/9.x/9.1/misc/FontPack910_xtd_i486-linux.tar.bz2" \
	"http://ardownload.adobe.com/pub/adobe/reader/unix/9.x/9.1.2/deu/AdbeRdr9.1.2-1_i486linux_deu.tar.bz2" \
	"http://ardownload.adobe.com/pub/adobe/reader/unix/8.x/8.1.2/misc/FontPack81_jpn_i486-linux.tar.gz" \
	"acroread-fonts-systemwide.install")
arch=(i686 x86_64)
install=acroread-fonts-systemwide.install
license=('custom')
md5sums=('8abe3f7fb77918a8376b6793b841eaab'
         '38baee4eca2d8291220eb8a8ab77f9b7'
         '76a3dd2511d82c9dc1556bb0f0eae6c1'
         'a2de87858345cf3b2199d4a2fe424b65'
	 'f134fae1598279326b2ad7ad52d3ad9d'
	 '56d631775fb7ae3eb7e3247f8f1ca786'
	 'cc0e9048287bbb1a30927ad18d73af6e')

build() {
        mkdir -p $pkgdir/usr/share/fonts/adobe
	cd $pkgdir/usr/share/fonts/adobe
	find $srcdir -name LANG\*.TAR -exec tar -xvf {} \;
	tar -xvf $srcdir/AdobeReader/COMMON.TAR
	cp Adobe/Reader8/Resource/CIDFont/*.otf .
	cp Adobe/Reader9/Resource/CIDFont/*.otf .
	cp Adobe/Reader9/Resource/Font/*.otf .
	rm -rf Adobe
}
