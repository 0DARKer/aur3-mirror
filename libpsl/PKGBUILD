# Maintainer: Darshit Shah <darnir@gmail.com>
pkgname=libpsl
pkgver=0.2.2
pkgrel=1
pkgdesc="A Publix Suffic List library"
arch=('i386' 'x86_64')
url="https://github.com/rockdaboot/libpsl"
license=('MIT')
depends=('libidn2')
makedepends=()
source=("https://github.com/rockdaboot/libpsl/archive/${pkgver}.tar.gz")

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim: ts=2:sw=2:et
md5sums=('b446c09453aa7bd89491974b5d6c404a')
