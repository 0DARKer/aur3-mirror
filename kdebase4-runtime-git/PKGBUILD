pkgname=kdebase4-runtime-git
pkgver=20110208
pkgrel=2
pkgdesc="Plugins and applications necessary for the running of KDE applications."
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL')
depends=('kdelibs4-git' 'ntrack' 'smbclient' 'libssh' 'libcanberra' 'oxygen-icons'
         'xorg-xauth' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdepimlibs4-git' 'openslp' 'xine-lib'
             'docbook-xsl' 'git')
optdepends=('htdig: to build the search index in khelpcenter'
            'rarian: needed by khelpcenter'
            'gdb: drkonq crash handler')
install="kdebase-runtime.install"

_gitroot="git://anongit.kde.org/kde-runtime"
_gitname="kde-runtime"

build() {
. /etc/profile.d/kde-git.sh
 cd $srcdir
  msg "Connecting to the GIT server...."
  
  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  
  msg "GIT checkout done"
  msg "Starting make..."
  
  
  mkdir $srcdir/$_gitname-build
  
  cd $srcdir/$_gitname-build

  cmake $startdir/src/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
				-DCMAKE_SKIP_RPATH=ON \
				-DCMAKE_INSTALL_PREFIX=/opt/kde4
  make
}

package() {
	cd $srcdir/$_gitname-build
	make DESTDIR=$pkgdir install
	rm -f ${pkgdir}/opt/kde4/share/icons/hicolor/index.theme
	ln -sf /opt/kde4/lib/kde4/libexec/kdesu ${pkgdir}/opt/kde4/bin/
	rm -rf $srcdir/$_gitname-build
}
