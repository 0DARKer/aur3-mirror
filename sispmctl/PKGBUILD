pkgname=sispmctl
pkgver=2.7
pkgrel=1
pkgdesc="SIS-PM Control is an application enabling the use of the Gembird SIS-PM Silver Shield device family under Linux."
arch=('any')
url="http://sispmctl.sourceforge.net/"
license=('GPL')
depends=('libusb>=0.1.7')
makedepends=('pkgconfig')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('2457f76cd129f880634f3381be0aeb76')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-webless
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:

