# Maintainer: Andre Wayand <aur-sope@awayand.sleepmail.com>
pkgname=sope
pkgver=1.3.7
pkgrel=1
pkgdesc="SOPE"
arch=('any')
url="http://www.sogo.nu/files/downloads/SOGo/Sources/"
license=('GPL')
makedepends=('gnustep-base' 'gnustep-make')
source=(
	"http://www.sogo.nu/files/downloads/SOGo/Sources/SOPE-1.3.7.tar.gz"
	patchfile
	SoObjCClass.diff
)

build() {
  cd "${srcdir}/SOPE-${pkgver}"
  patch -p0 < "${srcdir}/patchfile"
  patch -p0 "${srcdir}/SOPE-${pkgver}/sope-appserver/NGObjWeb/SoObjects/SoObjCClass.m" "${srcdir}/SoObjCClass.diff"

  ./configure --prefix="/usr"
  make
}

package() {
 cd "${srcdir}/SOPE-${pkgver}"

  make install DESTDIR="${pkgdir}"
}
md5sums=('4fa4a9567e7ec9340c2ec8782c37b154'
         '7fea5d1703639dfce59e306aa945b8bf'
         'b1e4d49895add62eb0b942f9a74f7640')
