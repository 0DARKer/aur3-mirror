# Maintainer: Andre Wayand <aur-sope@awayand.sleepmail.com>
pkgname=sope
pkgver=2.0.0rc1
pkgrel=2
pkgdesc="application server used by SOGo"
arch=('any')
url="http://www.sogo.nu/files/downloads/SOGo/Sources/"
license=('GPL')
makedepends=('gnustep-base' 'gnustep-make' 'gcc-objc')
source=(
	"http://www.sogo.nu/files/downloads/SOGo/Sources/SOPE-${pkgver}.tar.gz"
	sope_gcc_4_7.diff
)

build() {
  cd "${srcdir}/SOPE-${pkgver}"
  patch -p0 < ${srcdir}/sope_gcc_4_7.diff

  ./configure --prefix="/usr"
  ln -s /usr/bin/install /bin/install
  make
  rm /bin/install
}

package() {
 cd "${srcdir}/SOPE-${pkgver}"

  make install DESTDIR="${pkgdir}"
}
md5sums=('9eb564e7f9a50aa70210da270cac0229'
         '0d6f97cab02ddf31d291ab334c35fe4e')
sha1sums=('d8b8bc75646676c706470428d8aa0486cd2a3242'
          '6eab71de2390c679f5f540c63e7871bf13be4566')
