# Maintainer: Andre Wayand <aur-sope@awayand.sleepmail.com>
pkgname=sope
pkgver=2.0.0b2
pkgrel=1
pkgdesc="application server used by SOGo"
arch=('any')
url="http://www.sogo.nu/files/downloads/SOGo/Sources/"
license=('GPL')
makedepends=('gnustep-base' 'gnustep-make')
source=(
	"http://www.sogo.nu/files/downloads/SOGo/Sources/SOPE-${pkgver}.tar.gz"
)

build() {
  cd "${srcdir}/SOPE"

  ./configure --prefix="/usr"
  make
}

package() {
 cd "${srcdir}/SOPE"

  make install DESTDIR="${pkgdir}"
}
md5sums=('d41642817483c1276f4a7d1d1ccb8848')
