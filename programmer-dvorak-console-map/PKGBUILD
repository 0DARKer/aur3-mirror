# Contributor: Tim Diels <limyreth[at]gmail.com>
pkgname=programmer-dvorak-console-map
pkgver='1.2.0'
pkgrel=1
pkgdesc="programmer dvorak console map"
arch=(i686 x86_64)
url="http://www.kaufmann.no/roland/dvorak/"
license=('custom')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=('http://www.kaufmann.no/downloads/linux/dvp-1_2_0.map.gz'
        'LICENSE')
noextract=()
md5sums=('37c662dbf761bfb0ca989b300c654410'
         '6a667b8aa28ebfee4013adc15542a0de'
        )

build() {
  cd ${srcdir}

  install --verbose -m 644 -D $startdir/LICENSE \
    ${pkgdir}/usr/share/licenses/programmer-dvorak-console-map/LICENSE || return 1

  install --verbose -m 644 -D "dvp-1_2_0.map.gz" \
    ${pkgdir}/usr/share/kbd/keymaps/i386/dvorak/dvp.map.gz || return 1
}

