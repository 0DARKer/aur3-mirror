# Maintainer: edloaa <edloaa at googlemail dot com>
# Contributor: edloaa <edloaa at googlemail dot com>
pkgname=cow_backup
pkgver=2.0.2
pkgrel=3
pkgdesc="Interactive bash script for compressed (and gpg-encrypted) full backups and recoveries using tar"
arch=('any')
url="http://cow-backup.bplaced.net/"
license=('GPL')
depends=('bash' 'sudo' 'coreutils' 'gnupg')
source=($pkgname cow_backup.desktop cow_backup.png)
md5sums=('001e196a05024c4507817ac8089f844f'
         '2071ea6f3ee2e61628a2f7a311821145'
         '79eb3ed858f0f9fa442431291fbdd290')

build() {
    install -Dm 755 $pkgname		$pkgdir/usr/bin/$pkgname
    install -Dm 644 cow_backup.desktop	$pkgdir/usr/share/applications/cow_backup.desktop
    install -Dm 644 cow_backup.png	$pkgdir/usr/share/icons/cb/cow_backup.png
}
