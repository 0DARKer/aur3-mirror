# Maintainer: edloaa
# Contributor: edloaa
pkgname=cow_backup
pkgver=1.6.7
pkgrel=2
pkgdesc="Simple interactive bash script for full backups and recoveries using tar"
arch=('any')
url="http://tinyurl.com/cow-backup"
license=('GPL')
depends=('bash' 'sudo')
source=($pkgname cow_backup.desktop cow_backup.png)
md5sums=('d9cef79a686b47d12e47d790613731f3'
         '2071ea6f3ee2e61628a2f7a311821145'
         'deab4947f2c6fba709866c6283483d81')

build() {
    install -Dm 755 $pkgname		$pkgdir/usr/bin/$pkgname
    install -Dm 644 cow_backup.desktop	$pkgdir/usr/share/applications/cow_backup.desktop
    install -Dm 644 cow_backup.png	$pkgdir/usr/share/icons/cb/cow_backup.png
}
