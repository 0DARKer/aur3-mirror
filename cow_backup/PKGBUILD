pkgname=cow_backup
pkgver=2.1.7
pkgrel=1
pkgdesc="create and restore compressed and encrypted backups of partitions or directories"
arch=('any')
url="http://cow-backup.bplaced.net/"
license=('GPL')
depends=('bash' 'sudo' 'coreutils' 'gnupg' 'tar' 'util-linux' 'grep' 'ncurses')
source=($pkgname)
md5sums=('824e91bdcfeb493ad3d02297594ec244')

build() {
    install -Dm 755 $pkgname $pkgdir/usr/bin/$pkgname
}
