pkgname=cow_backup
pkgver=3.0.7.test
pkgrel=1
pkgdesc="create and restore compressed and encrypted full backups of partitions"
arch=('any')
url="http://cow-backup.bplaced.net/"
license=('GPL')
depends=('bash' 'coreutils' 'util-linux' 'ncurses' 'grep' 'gnupg' 'tar')
source=(cowbackup)
md5sums=('94fd6ea06169fcee004ba33b9b2c68f9')

build() {
    install -Dm 755 cowbackup $pkgdir/usr/bin/cowbackup
}
