pkgname=cow_backup
pkgver=2.1.8
pkgrel=2
pkgdesc="create and restore compressed and encrypted full backups of partitions and directories"
arch=('any')
url="http://cow-backup.bplaced.net/"
license=('GPL')
depends=('bash' 'coreutils' 'util-linux' 'ncurses' 'grep' 'gnupg' 'tar')
source=($pkgname)
md5sums=('ad514df4588fe6fefd486848b9c9c031')

build() {
    install -Dm 755 $pkgname $pkgdir/usr/bin/$pkgname
}
