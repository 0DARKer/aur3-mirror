# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=weboob
pkgver=0.a
pkgrel=2
pkgdesc="Web Out Of Browsers provides several applications to interact with a lot of websites."
arch=('any')
url="http://weboob.org/"
license=('GPL')
depends=('python2-pyqt' 'python2-elementtidy' 'python2-prettytable' 'python2-webob'
         'python-clientform' 'python2-dateutil' 'python2-feedparser' 'python-gdata'
         'python-html2text' 'python-imaging' 'python-lxml' 'python2-mako' 'phonon'
         'python-mechanize' 'python2-nose' 'python-pysqlite' 'pygtk' 'which'
         'python-routes' 'python2-yaml' 'pywebkitgtk' 'pyxdg')
optdepends=('gnupg: check for repository authenticity'
            'python-simplejson: simplejson backend'
            'python2-nose: test suite')
install="$pkgname.install"
source=("http://symlink.me/attachments/download/165/$pkgname-$pkgver.tar.gz")
md5sums=('15568485fd2bea4c53b69a6edb8c7e45')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # remove forced white background property
  sed -i "48,50d" weboob/applications/qvideoob/ui/video.ui
  sed -i "146,150d" weboob/applications/qvideoob/ui/main_window.ui
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --prefix=/usr --root="$pkgdir"

  # python2 fix
  sed -i "s|env python|&2|" `grep -rl "env python" "$pkgdir"`
}
