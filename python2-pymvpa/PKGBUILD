# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=python2-pymvpa
pkgver=0.4.7
pkgrel=1
pkgdesc='PyMVPA is a Python module intended to ease pattern classification analyses of large datasets.'
arch=('i686' 'x86_64')
url='http://www.pymvpa.org/'
license=('MIT')
depends=('python2-numpy' 'swig')
source=("http://alioth.debian.org/frs/download.php/3525/pymvpa_${pkgver}.tar.gz")
md5sums=('c954c6aaf2880d59a098bc2d945c9745')

build() {
  cd pymvpa-${pkgver}

  python2 setup.py build
}

package() {
  cd pymvpa-${pkgver}

  python2 setup.py install \
    --root=${pkgdir} \
    --optimize=1
}
