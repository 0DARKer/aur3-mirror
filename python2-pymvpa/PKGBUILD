# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=python2-pymvpa
pkgver=0.4.6
pkgrel=1
pkgdesc='PyMVPA is a Python module intended to ease pattern classification analyses of large datasets.'
arch=('i686' 'x86_64')
url='http://www.pymvpa.org/'
license=('MIT')
depends=('python2-numpy' 'swig')
source=("https://alioth.debian.org/frs/download.php/3490/pymvpa_${pkgver}.tar.gz")
md5sums=('e06c20a1432099bd14651f5c9fbde1e7')

build() {
  cd pymvpa-0.4.5

  python2 setup.py build
}

package() {
  cd pymvpa-0.4.5

  python2 setup.py install \
    --root=${pkgdir} \
    --optimize=1
}
