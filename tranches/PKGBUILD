# Maintainer: David Adler <david dot jo dot adler at gmail dot com>
pkgname=tranches
pkgver=0.1.1
pkgrel=2
pkgdesc="MIDI controllable beat slicer"
arch=(i686 x86_64)
url="http://www.tardigrade-inc.com/index.php/En/Tranches"
license=('GPL')
depends=(fltk lash)
makedepends=(scons)
source=(http://www.tardigrade-inc.com/uploads/$pkgname-$pkgver.tar.gz sconstruct_tranches.diff)
md5sums=('16e50166309caee1ea94ea944812dbb9'
	 '51671625c776b868802a4aed91dc84eb')

build() {
  cd "$srcdir/$pkgname-$pkgver" 
  rm src/*/*.o
  patch -i ../../sconstruct_tranches.diff SConstruct || return 1
  scons || return 1
scons DESTDIR=$pkgdir PREFIX=/usr install || return 1
}
