# Maintainer: Thomas Dziedzic < gostrc at gmail >

pkgname=vim-session
pkgver=1.4.25
pkgrel=1
pkgdesc='Extended session management for Vim (:mksession on steroids)'
arch=('any')
license=('MIT')
url='https://github.com/xolox/vim-session'
makedepends=('git')

build() {
  local _gitroot='git://github.com/xolox/vim-session.git'

  if [[ -d python-mode ]]; then
    cd vim-session
    git pull
  else
    git clone ${_gitroot}
    cd vim-session
  fi

  git checkout -b ${pkgver}
}

# used for !() remove when pacman 4 finally comes out :DDD
shopt -s extglob

package() {
  cd vim-session

  install -d ${pkgdir}/usr/share/vim/vimfiles/

  cp -r !(*\.md) \
    ${pkgdir}/usr/share/vim/vimfiles/
}
