# Contributor: Nathan O <ndowens.aur at gmail dot com> 
pkgname=seesmic-desktop
pkgver=0.8
pkgrel=3
pkgdesc="Get live updates from Twitter and Facebook."
arch=('i686' 'x86_64')
url="http://desktop.seesmic.com/"
license=('unknown')
depends=('adobe-air')
makedepends=('unzip')
source=(http://d.seesmic.com/seesmic/SeesmicDesktop-${pkgver}.air seesmic-desktop.desktop seesmic-desktop.sh)
md5sums=('e3b90603b25e6407ec68d601855140c2'
         '8031da7981ba6009b810b539ded8222f'
         '3f0a010573af28b39d6a1a40bf44bd3a')

build()
{
   cd ${srcdir}
   install -d ${pkgdir}/{usr/{bin,share/{applications/${pkgname},icons/${pkgname}}},opt/${pkgname}} 
   
   unzip SeesmicDesktop-${pkgver}.air -d ${srcdir}/ 

   install -Dm644 SeesmicDesktop-${pkgver}.air ${pkgdir}/opt/seesmic-desktop 
   install -Dm644 icons/seesmic-48.png ${pkgdir}/usr/share/icons/${pkgname}/
   install -Dm644 SeesmicDesktop-${pkgver}.air ${pkgdir}/opt/seesmic-desktop/seesmic-desktop.air 

   install -Dm644 ${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}/ 
   install -Dm755 ${pkgname}.sh ${pkgdir}/usr/bin/${pkgname}
}

