# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=tanglet
pkgver=1.1.1
pkgrel=2
pkgdesc="A single player word finding game based on Boggle."
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL3')
depends=('qt' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('1337e3f1adea37f341fc95a163699d1c')
sha256sums=('49648b6372389723a77cee1c2d154dcda0a1eed6a6369af9c4ab77d926eab0b6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
