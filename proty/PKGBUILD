# Maintainer: Thomas Gatzweiler <thomas.gatzweiler at gmail com>
pkgname=proty
pkgver=0.1
pkgrel=1
pkgdesc="A dynamic, prototype based programming language."
arch=(i686 x86_64)
url="http://www.proty.cc"
license=GPL3
depends=('llvm>=2.9' 'clang>=2.9')
makedepends=('cmake>=2.8')
source=("http://dl.proty.cc/proty/$pkgname-$pkgver.tar.gz")
md5sums=("f3223de5f11c432d7d42a67d53a9d8b4")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release ..
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/build"
  make DESTDIR="${pkgdir}" install
}