#Contributor: imrahil <hugo_alobo@hotmail.com>

pkgname=gtk2-ia_ora
pkgver=1.0.20
pkgrel=1
pkgdesc="Default Mandriva Theme for Gnome"
url="http://www.mandriva.com/"
license="GPL"
depends=('gtk2')
makedepends=('rpmextract')
install=
source=(http://fr.rpmfind.net/linux/Mandrake-devel/cooker/SRPMS/main/release/ia_ora-gnome-${pkgver}-1mdv2009.0.src.rpm)
md5sums=('5c62521eef9e1fa48c8f693934eab76a')
arch=('i686' 'x86_64')

build() {
  cd $startdir/src/
  rpmextract.sh ia_ora-gnome-${pkgver}-1mdv2009.0.src.rpm
  tar -jxvf ia_ora-gnome-${pkgver}.tar.bz2
  cd ia_ora-gnome-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}
