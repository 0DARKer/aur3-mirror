# vim:set ts=2 sw=2 et:
# Contributor: Guilherme "nirev" Nogueira <guilherme@nirev.org>
_gemname=treetop
pkgname=ruby-${_gemname}
pkgver=1.4.9
pkgrel=1
pkgdesc="ruby gem; A ruby-base text parsing and interpretation DSL."
arch=(any)
url="http://functionalform.blogspot.com/"
license=('MIT')
depends=('ruby' 'ruby-polyglot')
makedepends=('rubygems')
source=("http://rubygems.org/downloads/${_gemname}-${pkgver}.gem")
noextract=("${_gemname}-$pkgver.gem")

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_gemname}-$pkgver.gem
}

md5sums=('73f8cc6855f56c3b6129bcbb0f31552d')
