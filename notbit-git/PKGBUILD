# notbit GIT version
# Contributor: alphazo@gmail.com

_gitname=notbit
pkgname=notbit-git
pkgver=r136.cd7ff7f
pkgrel=1
pkgdesc="A minimal Bitmessage client"
arch=('i686' 'x86_64')
depends=('openssl')
license=('GPL')
url="http://www.gnupg.org/"
makedepends=('git')
provides=("notbit=${pkgver}")
#install=${pkgname}.install
source=("git://git.busydoingnothing.co.uk/notbit.git")
sha1sums=('SKIP')

pkgver() {
  cd "$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$_gitname"

  ./autogen.sh

  ./configure --prefix=/usr \

  make
}

package() {
  cd "$_gitname"

  make DESTDIR=${pkgdir} install
}


