pkgname=lazr.restfulclient
pkgver=0.11.2
pkgrel=1
pkgdesc='A client for lazr.restful-based web services'
arch=('i686' 'x86_64')
url='https://launchpad.net/lazr.restfulclient'
license='GNU LGPL v3'
depends=('python2>=2.7.1' 'python2-httplib2' 'python2-oauth' 'python-simplejson' 'wadllib>=1.1.4' 'zope-interface')
makedepends=('python2>=2.6.5')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('06944b5ffdfd9471f5538a6e731bd1c5')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root=$pkgdir
}

