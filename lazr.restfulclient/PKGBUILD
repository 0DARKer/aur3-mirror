pkgname=lazr.restfulclient
pkgver=0.11.1
pkgrel=2
pkgdesc='A client for lazr.restful-based web services'
arch=('i686' 'x86_64')
url='https://launchpad.net/lazr.restfulclient'
license='GNU LGPL v3'
depends=('python2>=2.5' 'httplib2' 'wadllib' 'python2-oauth' 'python-simplejson')
makedepends=('python2>=2.5')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('6aff046eb8f616e9cda33ed01ca97789')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root=$pkgdir
}

