pkgname=php-cs-fixer
pkgver=0.4.0
pkgrel=2
pkgdesc="Analyzes some PHP source code and tries to fix coding standards issues (PSR-1 and PSR-2 compatible)."
url="http://cs.sensiolabs.org/"
license="MIT"
arch=("any")
depends=("php")
source=("http://get.sensiolabs.org/php-cs-fixer.phar")
sha512sums=('86e5b768170be8859a76947691632ec37bcaba6ccf79289f96e6584723a21612303d4c392b7ee16a3200b41b94bc918be91845f026adabe8ec130a99b863e289')

package() {
  install -D -m755 $srcdir/php-cs-fixer.phar $pkgdir/usr/share/webapps/bin/php-cs-fixer.phar

  install -d $pkgdir/usr/bin
  ln -s /usr/share/webapps/bin/php-cs-fixer.phar $pkgdir/usr/bin/php-cs-fixer
}

