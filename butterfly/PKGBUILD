pkgname=butterfly
pkgver=1.2.4
pkgrel=1
pkgdesc="A sleek web based terminal emulator"
arch=('any')
url="https://pypi.python.org/pypi/butterfly/1.2.4"
license=('GPL')
groups=()
depends=('python' 'python-tornado')
makedepends=('python-setuptools')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("https://pypi.python.org/packages/source/b/butterfly/butterfly-1.2.4.tar.gz")
sha256sums=('12a818c1ae3fc2c64903a7f7845b75dbc80b22bae1c48f532e18e4ebbbc2d9e4')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

