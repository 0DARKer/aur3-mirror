pkgname=vlc-srpos-plugin
pkgver=0.2
pkgrel=1
pkgdesc="his plugin allows you to automatically save and restore the position of the last 10 played files in the VLC player."
arch=('any')
url="https://code.google.com/p/vlc-srpos-plugin/"
license=("LGPL")
depends=("vlc>=2.0.0")
source=("https://vlc-srpos-plugin.googlecode.com/files/libsrpos_plugin-${pkgver}.tar.gz")
md5sums=(62013b61fa72d9813ec5010fe4e0d656)

build() {
  cd "${srcdir}/libsrpos_plugin-${pkgver}"
  ./configure
  make
}

package() {
  cd "${srcdir}/libsrpos_plugin-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
