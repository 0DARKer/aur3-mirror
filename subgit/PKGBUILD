# Maintainer: DonOregano <lars@foldspace.nu>

pkgname=subgit
pkgver=2.0.2
pkgrel=2
pkgdesc="SubGit is a smooth Subversion to Git migration. Install once on the server side and use both Subversion and Git as long as you like."
arch=('any')
url="http://${pkgname}.com"
license=('Custom:SubGit')
depends=('subversion' 'git' 'java-runtime>=5' 'java-environment>=5')
source=("http://${pkgname}.com/download/${pkgname}-${pkgver}.zip"
	'subgit')
md5sums=('a64d65c03a0493b300be742c97824304'
         '68c59f51c4d8322da169b944de2029cd')
sha512sums=('3d644be7b9147f085123ac987a858f9d2075c43c36a4d59cbad82af0f82f2c88e8a88340cf2e2b9efbf7f3d141041990c1eb5de389c3c82812d3cc0dc44d37ec'
            '53c157c745706fb9f489976e21681d38ded1a8e07a2fd78d3ee553a37172d461a8f789068aa7ea37b61cd83a0213df28ea9d127fc20c88024d9907026f7f4db3')

package() {
    install -d "${pkgdir}/opt"
	cp -rp "${srcdir}/${pkgname}-${pkgver}" "${pkgdir}/opt/subgit"
	install -Dm0755 'subgit' "${pkgdir}/usr/bin/subgit"
}
