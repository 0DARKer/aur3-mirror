# Generator  : CPANPLUS::Dist::Arch 1.21

pkgname='perl-cpan-meta-check'
pkgver='0.005'
pkgrel='1'
pkgdesc="Verify requirements in a CPAN::Meta object"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-cpan-meta>=2.120921' 'perl-cpan-meta-requirements')
makedepends=('perl-test-differences')
url='http://search.cpan.org/dist/CPAN-Meta-Check'
source=("http://search.cpan.org/CPAN/authors/id/L/LE/LEONT/CPAN-Meta-Check-$pkgver.tar.gz")
md5sums=('d6c84386c77298468d35a4e03eda6719')
sha512sums=('4cd0dc8ca750976624eb6e854d5b472418e1d555666fa98a4a653e59516b29281576d1056ed4af60d863381835015e114c608555d8124232148af0e5b3310ad2')

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "${srcdir}/CPAN-Meta-Check-$pkgver"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "${srcdir}/CPAN-Meta-Check-$pkgver"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "${srcdir}/CPAN-Meta-Check-$pkgver"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

