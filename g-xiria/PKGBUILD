pkgname=g-xiria
pkgver=2.0
pkgrel=1
pkgdesc="This is G-Xiria icon theme."
arch=('any')
url="http://www.megaupload.com/?d=IJ8DWYBE/"
license=('GPLv2')
depends=('gtk2' 'hicolor-icon-theme')
source=(http://www427.megaupload.com/files/078120ec5539e3676d501981b9bd5067/G-Xiria%202.0.tar.bz2)
md5sums=('9fd29a7cee566f7544f118f85d9ef2dc')

build() {
	cd $startdir/src/
	mkdir -p $startdir/pkg/usr/share/icons/
	cp -r "G-Xiria 2.0" $startdir/pkg/usr/share/icons/
}
