pkgname=industrial-icon-theme
pkgver=11.0.5
pkgrel=1
pkgdesc='Ximian Industrial icon theme for GNOME'
url='http://forgeftp.novell.com/opensuse-art'
source=(http://forgeftp.novell.com/opensuse-art/openSUSE11/icons/$pkgname-$pkgver.tar.gz)
md5sums=('8a8bde9ee8f4ae6d52dd662a7addcd3b')
license=('GPL')
arch=('i686' 'x86_64')
makedepends=('gtk2' 'icon-naming-utils>=0.7.0')
depends=()
conflicts=()
replaces=()
backup=()

build() {
  cd $startdir/src/$pkgname-$pkgver/
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg/ install
}
