pkgname=pacman-cage
pkgver=2.9.8.2
pkgrel=5
pkgdesc="Creates a loopbacked filesystem to give better response times when using pacman." 
url="http://bbs.archlinux.org/viewtopic.php?id=20385" 
license=('GPL') 
arch=('any')
install=pacman-cage.install
source=(pacman-cage pacman-uncage pacmandb.rc pacman-cage.patch backup_pacmandb.cron)
md5sums=('b7c64d2876e84092f864dec2cd3cded5'
         'f7cecfbc69d96d88a0e61ef07f3144d5'
         'b8c14cd19bf840633c493097baaf2624'
         'ad099b6eb1f39177b53eea4d24f05dc9'
         '8b7dc8a570473667a53498eda219e65e')

package() { 
	cd ${srcdir}
	patch < pacman-cage.patch
	install -D -m 755 pacman-cage ${pkgdir}/usr/bin/pacman-cage
	install -m 755 pacman-uncage ${pkgdir}/usr/bin/ 
	install -D -m 755 ${srcdir}/pacmandb.rc ${pkgdir}/etc/rc.d/pacmandb
	# Choose one if you wish to install the cron backup script.
	# You also might want to change the backup dir inside the script.
	#install -D -m 0755 backup_pacmandb.cron ${pkgdir}/etc/cron.hourly/backup_pacmandb
	#install -D -m 0755 backup_pacmandb.cron ${pkgdir}/etc/cron.daily/backup_pacmandb
}

