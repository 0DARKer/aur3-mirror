options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Catalyst-Manual'
source=('http://search.cpan.org/CPAN/authors/id/H/HK/HKCLARK/Catalyst-Manual-5.9006.tar.gz')
