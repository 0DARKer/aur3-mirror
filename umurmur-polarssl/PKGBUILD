# Contributor: Robert Knauer <robert@privatdemail.net>
# Contributor: xav <xav at ethertricks dot net>

pkgname=umurmur-polarssl
_pkgsrcname=umurmur
pkgver=0.2.13
pkgrel=1
pkgdesc="A minimalistic Mumble server"
arch=('i686' 'x86_64' 'armv7h')
url="http://code.google.com/p/umurmur/"
license=('custom')
depends=('polarssl' 'libconfig' 'protobuf-c')
conflicts=('umurmur')
source=(
  "http://${_pkgsrcname}.googlecode.com/files/${_pkgsrcname}-${pkgver}.tar.gz"
  "${_pkgsrcname}.service"
)
sha256sums=(
  'ac1595fa47ce6bd1e0706dd609293f745d73a59af00a7a04ddc0f9ae243997be' 
  '86f396a042d02b9f9ed9f23596ed650ae7604d2de3e0f560f1f2fe03167fbbba'
)
install="${pkgname}.install"

build() {
  cd "${srcdir}/${_pkgsrcname}-${pkgver}"
  ./configure --prefix=/usr --mandir=/usr/share/man --with-ssl=polarssl
  make
}

package() {
  cd "${srcdir}/${_pkgsrcname}-${pkgver}"
  make DESTDIR=${pkgdir} install || return 1
  install -Dm644 'umurmur.conf.example' "${pkgdir}/etc/umurmur/umurmur.conf.example"
  install -Dm644 "${srcdir}/umurmur.service" "${pkgdir}/usr/lib/systemd/system/umurmur.service"
  install -Dm644 'LICENSE' "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
