# Contributor : xav <xav at ethertricks dot net>

pkgname=umurmur-polarssl
_pkgsourcename="umurmur"
pkgver=0.2.6
pkgrel=1
pkgdesc="A minimalistic Mumble server (PolarSSL version)"
arch=('i686' 'x86_64')
url="http://code.google.com/p/umurmur/"
license=('GPL')
depends=('libconfig')
makedepends=('polarssl')
conflicts=('umurmur')
source=(http://umurmur.googlecode.com/files/${_pkgsourcename}-${pkgver}.tar.gz \
        umurmur.rc.d \
        umurmur.conf.d \
        umurmur.1 \
        polarssl.patch)
sha1sums=('aa53a93930c6f26a20fdc2c08419e18aeed40829'
          '76376e94182d607a7b803d73038b5f7bda6745dd'
          '21749181b742154a3be984caa5e29ab62410e9cf'
          '07e1f5082faced4610ef97af2aacd52f583b9a5f'
          '7304d4f5b663d6a41b3876a831ba8a987fced7e2')

build() {
  cd ${srcdir}  
  patch -p0 < polarssl.patch
  
  cd ${srcdir}/${_pkgsourcename}-${pkgver}/src  
  unset LDFLAGS 
  make || return 1

  install -Dm755 umurmurd ${pkgdir}/usr/sbin/umurmurd
  install -Dm644 ../umurmur.conf.example ${pkgdir}/etc/umurmur/umurmur.conf
  install -Dm755 ${startdir}/umurmur.rc.d ${pkgdir}/etc/rc.d/umurmur
  install -Dm644 ${startdir}/umurmur.conf.d ${pkgdir}/etc/conf.d/umurmur
  install -Dm644 ${startdir}/umurmur.1 ${pkgdir}/usr/share/man/man1/umurmur.1
  
}

