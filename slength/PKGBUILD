# Maintainer: Alexej Magura <agm2819*gmail*>

pkgname=slength 
pkgver=1.01_2
pkgrel=3
pkgdesc="a program that returns the length of user supplied strings"
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/slength/"
license=('BSD')
depends=('python2')
source=("https://downloads.sourceforge.net/project/$pkgname/sforge/$pkgname-${pkgver}.tar.bz2?r=&ts=1367982532&use_mirror=hivelocity")
md5sums=('5cd2e66a611208dff5ca70dbf518ab76')

prepare() {

    cd $srcdir/$pkgname-$pkgver

}

build() {
    cd $srcdir/$pkgname-$pkgver

    make all

}

package() {
    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install-then-clean
}
