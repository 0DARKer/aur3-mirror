pkgname=slength
pkgver=0.9.8.2b
pkgrel=1
pkgdesc="Perl program that returns the length of user-supplied string(s)"
arch=('i686' 'x86_64')
url="https://bitbucket.org/agalog/releases"
license=('BSD')
groups=('')
depends=('perl>=5.10.0') # 'perl-switch') will be a dep in the next major version.  
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("https://bitbucket.org/agalog/releases/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('75c936163c870fa79c47220aa445dc6b')

build() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/share/man/man1/"
    mkdir -p "$pkgdir/usr/bin/"
    install -m 755 slength "$pkgdir/usr/bin/"
    install -m 644 -D slength.1.gz "$pkgdir/usr/share/man/man1/slength.1.gz"

}



