# Maintainer: Alexej Magura <agm2819*gmail*>

pkgname=slength 
pkgver=1.01_2
pkgrel=2
pkgdesc="a program that returns the length of user supplied strings"
arch=('i686' 'x86_64')
url="https://bitbucket.org/agalog/releases"
license=('BSD')
depends=('python2')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=('52fed502f9e5a501b67fa03878f081eb')

prepare() {

    cd $srcdir/$pkgname-$pkgver

    rename .slength.1_patch slength.1_patch .slength.1_patch

    patch slength.1 slength.1_patch

}

build() {
    cd $srcdir/$pkgname-$pkgver

    make all

}

package() {
    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install-then-clean
}
