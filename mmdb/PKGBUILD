# Maintainer: Alexander Minges <alexander.minges@gmail.com>
pkgname=mmdb
pkgver=1.25.0
pkgrel=1
pkgdesc="A C++ toolkit for working with macromolecular coordinate files"
arch=('i686' 'x86_64')
url="https://launchpad.net/mmdb"
license=('LGPL')
source=(http://www2.mrc-lmb.cam.ac.uk/groups/murshudov/coot/dependencies/$pkgname-$pkgver.tar.gz)
sha256sums=('3208af799b0fe73361f9727b200398332cdee4fd082d487caef8aa6a7b9917c5') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
} 
