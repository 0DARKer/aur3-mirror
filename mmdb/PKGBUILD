# Maintainer: Alexander Minges <alexander.minges@gmail.com>
pkgname=mmdb
pkgver=1.25.0
pkgrel=3
pkgdesc="A C++ toolkit for working with macromolecular coordinate files"
arch=('i686' 'x86_64')
url="https://launchpad.net/mmdb"
license=('LGPL')
source=(http://www2.mrc-lmb.cam.ac.uk/groups/murshudov/coot/dependencies/$pkgname-$pkgver.tar.gz
        mmdb.pc)
sha256sums=('3208af799b0fe73361f9727b200398332cdee4fd082d487caef8aa6a7b9917c5'
            'ddceb5be4a1b0b875f5f9b2c8359faef39cc2c4a21d2cdeacd582c21e9e3abc0')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-shared
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  
  install -Dm644 $srcdir/mmdb.pc $pkgdir/usr/lib/pkgconfig/mmdb.pc
}
