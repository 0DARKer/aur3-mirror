# Maintainer: Daniel Milde <info@milde.cz>

pkgname=apache-solr
pkgver=1.4.1
pkgrel=1
pkgdesc="Search platform"
arch=(i686 x86_64)
license=('Apache')
url="http://lucene.apache.org/solr/"
depends=(java-environment)
source=("http://ftp.sh.cvut.cz/MIRRORS/apache/lucene/solr/${pkgver}/apache-solr-${pkgver}.tgz" \
        "apache-solr" \
        "apache-solr.conf.d")
md5sums=('258a020ed8c3f44e13b09e8ae46a1c84' \
         '1836a11fd54a454991f7964d51a1912d' \
         '7f779f78a4266219c2bed9033f9e7e85')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  
  install -d ${pkgdir}/opt/apache-solr
  cp -R ./example/* ${pkgdir}/opt/apache-solr
  
  cd ${startdir}/src
  install -D ./apache-solr ${pkgdir}/etc/rc.d/apache-solr
  install -D ./apache-solr.conf.d ${pkgdir}/etc/conf.d/apache-solr
}
