pkgname=cvxopt  
pkgver=1.1.4
pkgrel=3
pkgdesc="A free software package for convex optimization written in Python"
url="http://abel.ee.ucla.edu/cvxopt"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('python' 'lapack')
source=(http://abel.ee.ucla.edu/${pkgname}/download.php)
md5sums=('e8b201142085d6ec9ea506381929f8eb')

build() {
  cd $srcdir/$pkgname-$pkgver/src
  python setup.py build || return 1
  python setup.py install --root=$pkgdir || return 1 
}
