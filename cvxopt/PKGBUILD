# Contributor: BinkyTheClown <binky_at_archlinux_dot_us>
pkgname=cvxopt  
pkgver=1.1.3
pkgrel=2
pkgdesc="A free software package for convex optimization written in Python"
url="http://abel.ee.ucla.edu/cvxopt"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('python' 'lapack')
source=(http://abel.ee.ucla.edu/${pkgname}/download_py3.php)
md5sums=('74accaa391622cbbcb45b7a905be95f4')

build() {
  cd $srcdir/python3-$pkgname-$pkgver/src
  python setup.py build || return 1
  python setup.py install --root=$pkgdir || return 1 
}
