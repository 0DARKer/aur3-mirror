pkgver=0.800.0
pkgrel=1
pkgdesc="Turn a chunk of CSV into an array of hashes or an array of hashes into CSV"
arch=('i686 x86_64')
url="http://search.cpan.org/dist/Text-CSV-Slurp/"
license=('unknown')
source=('http://search.cpan.org/CPAN/authors/id/R/RO/ROBBIEBOW/Text-CSV-Slurp-0.8.tar.gz')
md5sums=('32e458ae5abaa724f795503defc33eee')
