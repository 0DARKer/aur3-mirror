# Maintainer: Andreas B. Wagner <AndreasBWagner@gmail.com>
# Contributor: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-gist
pkgver=4.5
_scriptid=14204
pkgrel=1
pkgdesc="vimscript for gist"
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=2423"
license=('custom')
depends=('vim>=7.0' 'curl')
groups=('vim-plugins')
optdepends=('git: git profile support')
install=vimdoc.install
source=('gist.vim::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}'
        'license.txt')
md5sums=('c420933a7a4377bbb373fb8881615eb2'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/gist.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/gist.vim || return 1
    install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

