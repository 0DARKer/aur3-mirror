# Contributor: Sebastien Duquette <ekse.0x@gmail.com>
pkgname=sinatra
pkgver=1.0
pkgrel=1
pkgdesc="a web-development framework implemented as a ruby domain-specific language."
arch=(any)
url="http://www.sinatrarb.com/"
license=('MIT')
depends=('ruby' 'ruby-rack') 
makedepends=('rubygems')
source=("http://gems.rubyforge.org/gems/sinatra-$pkgver.gem")
noextract=("sinatra-$pkgver.gem")
md5sums=('58dd78900b2b945f12665ed29d33a909')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  #  makepkg will barf when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" sinatra-$pkgver.gem
}

# vim:set ts=2 sw=2 et:

