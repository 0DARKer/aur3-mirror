pkgname=craftbukkit-plugin-permissionsex
pkgver=1.19.5
pkgrel=1
pkgdesc="Offers different backends, powerful ingame management, fine grained restrictions for world modification."
arch=(any)
url="http://dev.bukkit.org/server-mods/permissionsex/"
license=("GPLv3")
depends=("craftbukkit>=1.4.7r1.0")
source=("http://dev.bukkit.org/media/files/659/820/PermissionsEx-${pkgver}-package.zip")
sha256sums=('b3e74d5d0a6e401cfbf116d0dd342ec57e762cb0e447b2e01d660e6a291680c3')

package() {
  find . -name '*.jar' | xargs -rtl1 -I {} install -Dm644 {} "$pkgdir/srv/craftbukkit/plugins/"{}
}

