# Contributor: Libernux <dutchman55@gmx.com>
pkgname="brother-mfc-210c"
pkgver="1.0.2"
pkgrel=1
pkgdesc="LPR and CUPS driver for the Brother MFC-210c"
url="http://solutions.brother.com/linux/en_us/"
arch=("i686" "x86_64")
license="unknown"
depends=("tcsh" "cups")
makedepends=("deb2targz")
install="$pkgname.install"
source=(
	"http://www.brother.com/pub/bsc/linux/dlf/mfc210clpr-1.0.2-1.i386.deb"
	"http://www.brother.com/pub/bsc/linux/dlf/cupswrapperMFC210C-1.0.2-3.i386.deb"
)
md5sums=(
	'd52d3e85b5a619bf5743e60fa0d06365'
	'23f49dd7ebdb96bede08da66906e727f'
)

build() {
	cd "$srcdir"
	deb2targz *.deb
	for i in *.tar.gz;do tar zxvf $i ;done
	cd "$srcdir/usr/local/Brother/cupswrapper"
#  generate the ppd
	echo '#! /bin/csh' > genppdfile
	echo 'set  ppd_file_name=brmfc210c_cups.ppd'  >>genppdfile
	echo 'touch $ppd_file_name' >>genppdfile
	sed -n '/>>\$ppd_file_name/p' cupswrapperMFC210C-1.0.2 >>genppdfile
	chmod +x genppdfile
	./genppdfile
#  generate the wrapper
	echo '#! /bin/csh' > genwrapper
	echo 'set  brotherlpdwrapper=brlpdwrapperMFC210C'  >> genwrapper
	echo 'touch $brotherlpdwrapper' >>genwrapper
	sed -n '/>>  \$brotherlpdwrapper/p' cupswrapperMFC210C-1.0.2 >>genwrapper
	sed -i  's|/usr/local/Brother|/usr/share/brother|g' genwrapper
	chmod +x genwrapper
	./genwrapper
#  generate other
	sed -i  's|/usr/local/Brother|/usr/share/brother|g' "$srcdir/usr/bin/brprintconfij2"
	sed -i  's|/usr/local/Brother|/usr/share/brother|g' "$srcdir/usr/lib/libbrcompij2.so.1.0.2"
	sed -i  's|/usr/local/Brother|/usr/share/brother|g' "$srcdir/usr/local/Brother/lpd/filterMFC210C"
	mv "$srcdir/usr/local/Brother/" "$srcdir/usr/share/brother"
	rm -rf "$srcdir/usr/local"
}

package() {
	cd "$pkgdir"
	cp -R "$srcdir/usr" "$pkgdir"
	rm "$pkgdir/usr/share/brother/cupswrapper/cupswrapperMFC210C-1.0.2"
	rm "$pkgdir/usr/share/brother/cupswrapper/genppdfile"
	rm "$pkgdir/usr/share/brother/cupswrapper/genwrapper"
	rm "$pkgdir/usr/share/brother/inf/setupPrintcapij"
	install -m 644 -D "$srcdir/usr/share/brother/cupswrapper/brmfc210c_cups.ppd" "$pkgdir/usr/share/cups/model/brmfc210c_cups.ppd"
	install -m 755 -D "$srcdir/usr/share/brother/cupswrapper/brlpdwrapperMFC210C" "$pkgdir/usr/lib/cups/filter/brlpdwrapperMFC210C"
}