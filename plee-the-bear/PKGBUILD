pkgname=plee-the-bear
pkgver=0.5.1
pkgrel=1
pkgdesc="A classic 2D platform game"
arch=('i686' 'x86_64')
url="http://plee-the-bear.sourceforge.net/"
license=('GPL')
depends=('libclaw>=1.6.1' 'boost>=1.33' 'sdl_mixer>=1.2.8' 'mesa')               # comment this line and
#depends=('libclaw>=1.5.4' 'boost>=1.33' 'sdl_mixer>=1.2.8' 'mesa' 'wxgtk>=2.8') # uncomment this line if you want enable the level and model editors
optdepends=('gettext' 'docbook-to-man')
makedepends=('cmake>=2.4')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('00205d760c34775798f8f5e6f131cda9')

build() {
  cd $pkgname-$pkgver

  cmake . -DBEAR_NO_EDITOR=TRUE -DCMAKE_INSTALL_PREFIX:PATH=/usr # comment this line and
#  cmake . -DCMAKE_INSTALL_PREFIX:PATH=/usr                      # uncomment this line if you want enable the level and model editors
  make || return 1
  make DESTDIR=$pkgdir install
}

