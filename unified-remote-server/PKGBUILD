# Maintainer: peace4all <markspost at rocketmail dot com>

pkgname=unified-remote-server
pkgver=3.0.4.427
pkgrel=1
pkgdesc="Unified Remote Server"
arch=('i686' 'x86_64')
url="http://www.unifiedremote.com/"
depends=('libxext' 'libx11')
license=('freeware')
install=$pkgname.install
source=("http://www.unifiedremote.com/download/linux-x86-deb"
	"urserver.service")
md5sums=('dc4607f05fcbbf468dfddd5b1814e917'
         '065062b989e25eb3f8555b05132ab59f')

 if test "$CARCH" == x86_64; then

source=("http://www.unifiedremote.com/download/linux-x64-deb"
	"urserver.service")
md5sums=('32c28a2cebd2724d3fc2ff3cc2a1059e'
         '065062b989e25eb3f8555b05132ab59f')
 fi

package() {
  cd ${srcdir}

  # decompress data
  tar zxf data.tar.gz

  # install folders
  mkdir -p ${pkgdir}/{opt,usr/lib/systemd/system}
  cp -r {opt,usr} "${pkgdir}/"

  # install service file
  cp urserver.service "${pkgdir}/usr/lib/systemd/system/urserver.service"

  # clean up permissions
  find "${pkgdir}" -type d | xargs -I {} chmod -R 755 "{}"
  find "${pkgdir}" -type f | xargs -I {} chmod -R 644 "{}"
  chmod 755 "${pkgdir}/opt/urserver/urserver"
}

