# Maintainer: AudioLinux  <audiolinux AT fastmail DOT fm>
# Contributor: peace4all <markspost at rocketmail dot com>

pkgname=unified-remote-server
pkgrel=1
pkgdesc="Unified Remote Server"
arch=('i686' 'x86_64' 'armv6h')
url="http://www.unifiedremote.com/"
depends=('libxext' 'libx11')
optdepends=('bluez' 'bluez-utils')
license=('freeware')
install=$pkgname.install

if test "$CARCH" == x86_64; then
        pkgver=3.2.2.628
	source=("http://www.unifiedremote.com/static/builds/server/linux-x64/628/urserver-$pkgver.deb" "urserver.service")
	sha256sums=('96a4569470856447a9455976a55441f022bdbe8e465ac0c225123052d051f9d9' 'ca049fc2e6b08276bf22b262577feca3fb4f83bef95e8f95a95d16b8d59fd107' )
fi
if test "$CARCH" == armv6h; then
        pkgver=3.2.2.410
        source=("http://www.unifiedremote.com/static/builds/server/linux-rpi/410/urserver-$pkgver.deb" "urserver.service")
        sha256sums=('d3c8f38652c2e0c4140733b6e6144203915d650643fa59b11ce43353c82d78e5' 'ca049fc2e6b08276bf22b262577feca3fb4f83bef95e8f95a95d16b8d59fd107')
fi

if test "$CARCH" == i686; then
        pkgver=3.2.2.628
        source=("http://www.unifiedremote.com/static/builds/server/linux-x86/628/urserver-$pkgver.deb" "urserver.service")
        sha256sums=('ba28a9510beb51c070722ef85ac554afd8b46edda8877bbeb7d870b4c6951aa3' 'ca049fc2e6b08276bf22b262577feca3fb4f83bef95e8f95a95d16b8d59fd107')
fi

package() {
	cd ${srcdir}

	# decompress data
	tar zxf data.tar.gz

	# fix and revert desktop file to old behaviour
	sed -i -e '9,24d;26d' $(find . -name 'urserver.desktop')

	# install folders
	mkdir -p ${pkgdir}/{opt,usr}
	cp -r {opt,usr} "${pkgdir}/"

	# clean up permissions
	find "${pkgdir}" -type d | xargs -I {} chmod -R 755 "{}"
	find "${pkgdir}" -type f | xargs -I {} chmod -R 644 "{}"
	chmod 755 "${pkgdir}/opt/urserver/urserver"
	
	# add systemd service
        install -Dm644 "urserver.service" "$pkgdir/usr/lib/systemd/system/urserver.service"
}

