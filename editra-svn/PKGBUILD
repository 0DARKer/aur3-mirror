# Contributor: birdspider <nemora@gmx.at>
# Contributor: Igor Dejanovic <igor DOT dejanovic AT gmail DOT com>
pkgname=editra-svn
pkgver=60517
pkgrel=1
pkgdesc="multi-platform text editor with an implementation that focuses on creating an easy to use interface and features that aid in code development"
arch=('i686' 'x86_64')
url="http://editra.org/"
license=('wxWindows Licence')
depends=('python' 'wxpython')
conflicts=('editra')
provides=('editra')
optdepends=('setuptools: needed if you want to use plugins')

_svntrunk=http://svn.wxwidgets.org/svn/wx/wxPython/3rdParty/Editra
_svnmod=trunk

build() {

	svn co $_svntrunk $_svnmod
	msg "SVN checkout done or server timeout"

	mkdir -p ${pkgdir}/usr/share/{pixmaps,applications} || return 1
	cd ${srcdir}/trunk/
	python setup.py install --prefix=${pkgdir}/usr
	install -m644 ${srcdir}/trunk/pixmaps/editra.png ${pkgdir}/usr/share/pixmaps/
	sed -i "s/^Version=.*$/Version=svn_$pkgver/" ${startdir}/editra.desktop || return 1
	install -m644 ${startdir}/editra.desktop ${pkgdir}/usr/share/applications/

}


