# Contributor: Martin Pieuchot <mpieuchot () nolizard ! org>

pkgname=firefox-spell-fr_fr
pkgver=3.0.3
pkgrel=1
pkgdesc="French languague dictionary (spellcheker) for Firefox 3"
arch=('i686' 'x86_64')
license=('GPL')
depends=("firefox>=$pkgver")
makedepends=('unzip')
url="http://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/"
source=(ftp://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/fr_FR-1990_1-3-2.zip)
md5sums=('0f346f79094a8c71a564d0e2685e5c3c')

build() {
  cd ${startdir}/src

  install -D -m 644 fr_FR-1990.aff ${pkgdir}/usr/share/myspell/fr_FR.aff || return 1
  install -D -m 644 fr_FR-1990.dic ${pkgdir}/usr/share/myspell/fr_FR.dic || return 1
}
