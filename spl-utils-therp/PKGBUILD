# Contributor: Kyle Fuller <inbox at kylefuller dot co dot uk>

pkgname=("spl-utils-therp")
pkgver=0.6.3
_pkgver=${pkgver/_/-}
pkgrel=1
pkgdesc="Solaris Porting Layer kernel module support files."
arch=("i686" "x86_64")
url="http://zfsonlinux.org/"
source=(http://archive.zfsonlinux.org/downloads/zfsonlinux/spl/spl-${_pkgver}.tar.gz
        spl-utils.hostid)
groups=("archzfs")
license=("GPL")
makedepends=("gcc" "make" "autoconf")

build() {
  cd "$srcdir/spl-${_pkgver}"
  ./autogen.sh
  ./configure --prefix=/usr --libdir=/usr/lib --sbindir=/usr/bin \
              --with-config=user
  make
}

package() {
  cd "$srcdir/spl-${_pkgver}"
  make DESTDIR=$pkgdir install

  install -D -m644 $srcdir/spl-utils.hostid $pkgdir/etc/hostid
}

md5sums=('8df6ce3c8f1d9af6526b36f5079cba59'
         'a54f0041a9e15b050f25c463f1db7449')
