pkgname=midish
pkgver=1.0.3
pkgrel=1
pkgdesc="shell-like MIDI sequencer/filter"
arch=('i686' 'x86_64')
url="http://caoua.org/midish/"
license=('BSD')
depends=('sh' 'alsa-lib')
source=(http://caoua.org/midish/$pkgname-$pkgver.tar.gz license.txt)
md5sums=('0925ab41dfce2920507e82af4a4f149e'
         'e06feab9e774712e7ff9d1c600f21a4c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  unset LDFLAGS
  
  ./configure --prefix=/usr --mandir=/usr/share/man
  make
}

package(){
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install

  # License text extracted from one of the source files.
  install -D -m644 ../../license.txt \
      "${pkgdir}"/usr/share/licenses/${pkgname}/license.txt
}
