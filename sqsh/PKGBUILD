# Contributor: Tido
# Maintainer: Erik Johnson (archtaku at gmail dot com)
pkgname=sqsh
pkgver=2.1.9
pkgrel=1
pkgdesc="Unix/Linux replacement for Sybase's isql"
url="http://www.sqsh.org/"
arch=('x86_64 i686')
license="GPL"
depends=('freetds' 'readline' 'libxaw')
source=(http://downloads.sourceforge.net/project/sqsh/sqsh/sqsh-${pkgver}/sqsh-${pkgver}.tgz)
md5sums=('3142ec51e77d60b4e99050f7554cf027')

build() {
	cd "${srcdir}/$pkgname-$pkgver"
	SYBASE=/usr
	export SYBASE
	./configure --prefix=/usr --with-x --with-readline
	make
	make DESTDIR="$pkgdir" install.man
	make DESTDIR="$pkgdir" install
}

