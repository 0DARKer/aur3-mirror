# CPAN Name  : Devel-Declare
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-devel-declare'
pkgver='0.006000'
pkgrel='1'
pkgdesc="Adding keywords to perl, in perl"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-b-hooks-endofscope>=0.05' 'perl-b-hooks-op-check>=0.18' 'perl-extutils-depends>=0.302' 'perl-sub-name')
url='http://search.cpan.org/dist/Devel-Declare'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/Devel-Declare-0.006000.tar.gz')
md5sums=('5daf4af74683f57e516ffc9efdc14eae')

build() {
  DIST_DIR="${srcdir}/Devel-Declare-0.006000"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
