pkgname=stardict-en-cz
pkgver=20130401
pkgrel=1
pkgdesc="GNU/FDL Anglicko-Cesky slovnik for StarDict"
arch=(any)
depends=('stardict')
url="http://slovnik.zcu.cz/"
license=('FDL')
md5sums=('1623c8e3f9b4c8d94d9106946382e9c5')
source=(http://dl.cihar.com/slovnik/stable/stardict-english-czech-$pkgver.tar.gz)

package() {
  mkdir -p $pkgdir/usr/share/stardict/dic
  cd $srcdir/stardict-english-czech-$pkgver
  install -m 644 czen.dict.dz czen.idx czen.ifo encz.dict.dz encz.idx encz.ifo \
  	$pkgdir/usr/share/stardict/dic
}

