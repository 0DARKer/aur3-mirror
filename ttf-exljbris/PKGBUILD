# Contributor: Jan Misiak <fijam@archlinux.ux>

pkgname=ttf-exljbris
pkgver=1.1
pkgrel=2
pkgdesc="A collection of free opentype fonts by Jos Buivenga. Includes Delicious, Diavlo, Fontin, Fontin Sans and Tallys."
arch=('i686' 'x86_64')
license=('custom')
url="http://www.josbuivenga.demon.nl/"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=exljbris.install
source=(http://www.josbuivenga.demon.nl/FontinSans_49.zip
	http://www.josbuivenga.demon.nl/pc/delicious-123.zip
	http://www.josbuivenga.demon.nl/tallys_15b2.zip
	http://www.josbuivenga.demon.nl/Diavlo_II_37b2.zip
	http://www.josbuivenga.demon.nl/pc/fontin_pc.zip
	exljbris-font-licence.txt)
md5sums=('88eb7b6f321c6f280bef72ab14a36c29'
         'd73b3f527631c861849b29f92d20e1cf'
         '09375d0c51262173608be224c453c8a9'
         'b1c86e273ce43bfefb813cca84bb494a'
         '48c49e2f04da88c6952e6603e0861023'
         '3c451ba7c5b4d1a04cd508165638eb5b')

build() {
    mkdir -p ${pkgdir}/usr/share/fonts/OTF
    install -m 644 -D *.otf ${pkgdir}/usr/share/fonts/OTF || return 1
    install -m 644 -D Diavlo_II_37/*.otf ${pkgdir}/usr/share/fonts/OTF || return 1
    install -m 644 -D exljbris-font-licence.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
    }
