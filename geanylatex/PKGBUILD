pkgname=geanylatex
pkgver=0.4
pkgrel=2
pkgdesc="GeanyLaTeX is a plugin for Geany IDE to improve work with LaTeX."
arch=('i686' 'x86_64')
license=('GPL')
url="http://frank.uvena.de/en/Geany/geanylatex/"
groups=('community')
depends=('geany>=0.16' 'gtk2>=2.6')
source=(http://frank.uvena.de/files/geany/$pkgname-$pkgver.tar.gz)
md5sums=('cbcb2022372683830932d2b4e271d790')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
