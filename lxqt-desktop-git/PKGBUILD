_pkgname=lxqt-desktop
pkgname=$_pkgname-git
pkgver=51.cd40b7d
pkgrel=1
pkgdesc="The LXQt desktop"
arch=('i686' 'x86_64')
url="http://www.lxde.org"
license=('GPL2')
depends=(
	'libqtxdg-git'
	'liblxqt-git'
	'liblxqt-mount-git'
	'libsysstat-git'
	'libfm-git'
	'lxqt-globalkeys-git'
	'lxqt-notificationd-git'
	# components
	'lxqt-panel-git'
	'lxqt-session-git'
	'lxqt-runner-git'
	'lxqt-qtplugin-git'
	'lxqt-appswitcher-git'
	'lxqt-policykit-git'
	'lxqt-openssh-askpass-git'
	'lxqt-power-git'
	'lxqt-powermanagement-git'
	# 'lximage-qt-git'
	'lxqt-config-git'
	'lxinput-qt-git'
	'lxqt-config-randr-git'
	# 'obconf-qt-git'
	# 'compton-conf-git'
	'lxqt-about-git'
	'lxqt-common-git'
	'lxmenu-data'
)
optdepends=(
	'pcmanfm-qt-git: The LXQt file manager'
	'openbox: Recommended window manager'
)
makedepends=('git' 'cmake')
provides=($_pkgname)
conflicts=($_pkgname)
source=("$_pkgname::git://github.com/lxde/lxde-qt.git")
sha256sums=('SKIP')
_gitname=$_pkgname

pkgver() {
	cd "$srcdir/$_gitname"
	echo "$(git rev-list --count HEAD).$(git describe --always)"
}


build() {
	msg2 "This is a metapackage. Nothing will be built."
}

package() {
	msg2 "This is a metapackage. Nothing will be installed."
}
