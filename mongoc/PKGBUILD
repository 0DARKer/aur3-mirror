pkgname='mongoc'
pkgver='0.6'
_gitrev='013fe75'
pkgrel='1'
pkgdesc='The officially supported MongoDB C driver and BSON library.'
arch=('i686' 'x86_64')
url='http://www.mongodb.org/display/DOCS/C+Language+Center'
license=('Apache')
depends=('glibc')
source=("$pkgname.tar.gz::https://github.com/mongodb/mongo-c-driver/tarball/v$pkgver")
md5sums=('4c12e5c4dd227f25e07cefb23159ede5')

build() {
  cd "mongodb-mongo-c-driver-$_gitrev"
  make
}

package() {
  cd "mongodb-mongo-c-driver-$_gitrev"
  make install \
    INSTALL_INCLUDE_PATH="$pkgdir/usr/include" \
    INSTALL_LIBRARY_PATH="$pkgdir/usr/lib"
}
