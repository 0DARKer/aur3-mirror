# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: oslik <oslik@mail.ru>
pkgname=u3d
pkgver=1.3
pkgrel=1
pkgdesc="Set of libraries to write, read, extend, render and interact with U3D-formatted data. Code examples. IDTF to U3D converter."
url="http://sourceforge.net/projects/mathgl/files/U3D%20tools/"
arch=('i686')
license=('GPL')
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://downloads.sourceforge.net/project/mathgl/U3D%20tools/$pkgname%20$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('24dcee56ee9f4b0bba33b2b2ccd61cfa')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 < ../../libpng.1.4.patch
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}