# Contributor: oslik <oslik@mail.ru>

pkgname=u3d
pkgver=1.4
pkgrel=1
pkgdesc="Set of libraries to write, read, extend, render and interact with U3D-formatted data. IDTF to U3D converter."
url="http://sourceforge.net/projects/mathgl/files/U3D%20tools/"
arch=('i686' 'x86_64')
license=('custom:APACHE')
depends=('libpng' 'libjpeg')
options=('!libtool')
source=("http://downloads.sourceforge.net/project/mathgl/U3D%20tools/$pkgname%20$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('b412b2661a319f33e1d8e2bdf17eaf37')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr \
              --enable-static=no
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install

  # license
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}