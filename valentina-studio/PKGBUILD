# Maintainer: Ben Cole <wengole@gmail.com>
pkgname=valentina-studio
pkgver=5.3
pkgrel=1
pkgdesc="Valentina Studio, SQL admin for valentina DB"
arch=('x86_64' 'i686')
url="http://www.valentina-db.com/download/release/linux_64/"
license=('unknown')
options=('emptydirs')
source=("http://www.valentina-db.com/download/release/linux_64/vstudio_x64_5_lin.rpm")
md5sums=('8d657e23a7cb242129e05db8636df27b')

package() {
    msg "Installing..."
    install -d "$pkgdir"/{opt/VStudio,usr/share/applications}
    mv opt/VStudio "$pkgdir"/opt
    mv usr/share/applications/* "$pkgdir"/usr/share/applications
    msg2 "Done!"
}

