#Maintainer: Shingetsu Kurai <andrey.kudryavtsev@gmail.com>
pkgname=smtube-svn
pkgver=5291
pkgrel=1
pkgdesc="Search, download and play videos from YouTube. SVN build."
arch=('i686' 'x86_64')
url="http://smplayer.sourceforge.net"
license=('GPL')
depends=('smplayer')
provides=('smtube')
conflicts=('smtube')

_svntrunk=https://subversion.assembla.com/svn/smplayer/smtube/trunk/
_svnmod=smtube

build() {
  cd "$srcdir"
  msg "Connecting to SVN server...."

  if [[ -d "$_svnmod/.svn" ]]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_svnmod-build"
  svn export "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"
  #build
  ./get_svn_revision.sh
  make PREFIX="/usr" QMAKE=qmake-qt4 LRELEASE=lrelease-qt4
}

package() {
  cd "$srcdir/$_svnmod-build"
  make DESTDIR="$pkgdir" install
}
