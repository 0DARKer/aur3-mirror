# Maintainer: Diego Principe <cdprincipe@at@gmail@dot@com>

pkgname=numix-utouch-icon-theme
pkgver=0.1
pkgrel=1
pkgdesc="Touch style of Numix icon theme"
arch=('any')
url="https://launchpad.net/~numix-icon-theme-dev/+archive/utouch"
license=('GPL3')
source=("https://launchpad.net/~numix-icon-theme-dev/+archive/utouch/+files/"$pkgname"_"$pkgver".orig.tar.gz")
md5sums=('48f3c087bb53aadd7a201994173a2754')


package() {
  cd "$srcdir"/"$pkgname"-"$pkgver"/Numix-uTouch/

  # create theme dirs
  install -d -m 755 "$pkgdir"/usr/share/icons/Numix-uTouch

  # clean up
  rm -rf {.git,.gitignore,CREDITS,LICENSE,README}

  # install theme
  cp -r . "$pkgdir"/usr/share/icons/Numix-uTouch/

}

