# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=ydcv
pkgver=0.1
pkgrel=1
pkgdesc="YouDao Console Version - A fast and really simple console client of Youdao Dict API"
arch=("any")
url="https://github.com/felixonmars/ydcv"
license=("GPL")
depends=('python2')
source=(
  "$pkgname.tar.gz::https://github.com/felixonmars/$pkgname/tarball/$pkgver"
)

build() {
  cd "$srcdir"
  
  rm -rf $pkgname
  mv felixonmars-$pkgname-* $pkgname
}

package() {
  install -Dm755 "${srcdir}/$pkgname/$pkgname.py" "${pkgdir}/usr/bin/$pkgname"
}

# vim:set ts=2 sw=2 et:
md5sums=('c4f03556c9fbacf98fb6406c9ba013cd')
