#!/bin/sh

export WINE
export WINEPREFIX
export WINEARCH=win32
export INSTDIR

if [[ "$1" == *ilverligh* ]];then
	/usr/share/wine-${1}-installer.install-script
	cp {INSTDIR}/mpg2slt.ax {WINEPREIX}/drive_c/windows/system32/.
	${WINE} regsvr32.exe {WINEPREIX}/drive_c/windows/system32/mpg2splt.ax
	echo ""
	echo "${1} installed successfully in ${WINEPREFIX}"
	echo ""
fi
