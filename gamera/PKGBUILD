# Maintainer: corvolino <corvolino@archlinux.com.br>

pkgname=gamera
pkgver=3.2.6
pkgrel=2
pkgdesc="Framework for building document analysis applications."
arch=('i686' 'x86_64')
url="http://gamera.informatik.hsnr.de"
license=('GPL')
depends=('python' 'libtiff' 'libpng')
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('b73d0e184c968020494bee8f3dc423fc')

build() {
  cd $srcdir/$pkgname-$pkgver
  python setup.py build || return 1
  python setup.py install --root=${pkgdir} --prefix=/usr
}


