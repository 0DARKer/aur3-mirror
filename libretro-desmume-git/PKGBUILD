# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-desmume-git
pkgver=20130202
pkgrel=1
pkgdesc="libretro implementation of DeSmuME. (Nintendo DS)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/desmume-libretro"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/libretro/desmume-libretro.git"
_gitname="desmume-libretro"

build() 
{
   cd $srcdir

   msg "Cloning desmume-libretro from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   if [ "$CARCH" == "x86_64" ]
   then
   make -f Makefile.libretro DESMUME_JIT=1
   else
   if [ "$CARCH" == "i686" ]
   then
   make -f Makefile.libretro DESMUME_JIT=1
   else
   make -f Makefile.libretro
   fi
   fi
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-desmume.so
}

