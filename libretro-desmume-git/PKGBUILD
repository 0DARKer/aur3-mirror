# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-desmume-git
_gitname=desmume-libretro
pkgver=2013.04.08_9b6f263
pkgrel=1
pkgdesc="libretro implementation of DeSmuME. (Nintendo DS)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/desmume-libretro"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')
source=('git://github.com/libretro/desmume-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
   if [ "$CARCH" == "x86_64" ]
    then
     make -f Makefile.libretro DESMUME_JIT=1
   else
    if [ "$CARCH" == "i686" ]
     then
      make -f Makefile.libretro DESMUME_JIT=1
     else
    make -f Makefile.libretro
   fi
  fi
}

package()
{
  mkdir -p $pkgdir/usr/lib/libretro
  install -v -m644 $srcdir/$_gitname/desmume_libretro.so $pkgdir/usr/lib/libretro/libretro-desmume.so
}