# Maintainer: Moritz Lipp <mail@mlq.me>
pkgname=opmsg
pkgver=0.10
_pkgver=rel-0-10
pkgrel=1
epoch=
pkgdesc="opmsg message encryption"
arch=('x86_64' 'i686')
url="https://github.com/stealth/opmsg"
license=('GPL')
makedepends=()
checkdepends=()
source=("https://github.com/stealth/${pkgname}/archive/${_pkgver}.tar.gz")
noextract=()
md5sums=('61e875e51aa847f693ebaf96d82ac041')
validpgpkeys=()

build() {
	cd "$pkgname-$_pkgver"
	make
}

package() {
	cd "$pkgname-$_pkgver"

  install -D -m755 opmsg "$pkgdir/usr/bin/opmsg"
}
