# Maintainer: M0Rf30 <morf3089@gmail.com>


pkgname=cupp-v3	
pkgver=3.0
pkgrel=1
pkgdesc="Common User Passwords Profiler " 
arch=('i686' 'x86_64') 
url="http://www.remote-exploit.org/?page_id=418" 
depends=('python') 
conflicts=() 
license=('GPL') 
source=(http://www.remote-exploit.org/wp-content/uploads/2010/04/cupp-$pkgver.tar.gz
        cupp-bin) 

sha1sums=('477e8e8c060f0da2e2039dc3af1ba4b17a421cd1'
          '0f88d6e5b9272b0b337cbf4b4b47f7811ccc016e')

build()
{


  # Organize the paths
    mkdir -p $pkgdir/usr/share/
    cp -r $srcdir/cupp $pkgdir/usr/share/
    
  # Create the executable link
    mkdir -p $pkgdir/usr/bin
    cp $srcdir/cupp-bin $pkgdir/usr/bin/cupp
    
}

