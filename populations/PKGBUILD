# Maintainer: bmpvieira <mail AT bmpvieira DOT com>
pkgname=populations
pkgver=1.2.32
pkgrel=2
pkgdesc="Population genetic software (individuals or populations distances, phylogenetic trees)"
arch=('i686' 'x86_64')
url="http://bioinformatics.org/~tryphon/populations/"
license=('GPL')
makedepends=('cmake')
depends=('qt')
source=(https://launchpad.net/~olivier-langella/+archive/ppa/+files/populations_1.2.32-2~karmic1.tar.gz)
md5sums=('eff94032dab14952029c6f9e0ca7c60a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}

