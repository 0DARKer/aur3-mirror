# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-chaco-svn
pkgver=25970
pkgrel=1
pkgdesc="Interactive 2-Dimensional Plotting."
arch=('i686' 'x86_64')
url="http://code.enthought.com/projects/chaco"
license=('BSD')
depends=('python2' 'python-numpy>=1.1' 'python-ets-enable-svn'
         'python-ets-traitsgui-svn' 'python-ets-enthoughtbase-svn')
makedepends=('subversion' 'gcc>=3.4' 'python2-distribute')
conflicts=('python-enthought-chaco')
options=(!emptydirs)

_svnmod=Chaco
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

