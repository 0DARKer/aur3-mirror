# Maintainer: gueek <cyttam at gmail>

pkgname=pngout-static-athlon
pkgver=20091108
pkgrel=1
_pkgarch=athlon
pkgdesc="PNGOUT optimizes the size of PNG files losslessly - Linux port (statically linked, Athlon(32) optimized)"
arch=('i686')
[ "$CARCH" = "i686"   ] && ARCH=x86
url="http://www.jonof.id.au/kenutils"
#depends=('')
license=('custom')
source=(http://static.jonof.id.au/dl/kenutils/pngout-$pkgver-linux-static.tar.gz)
md5sums=('55d4af6fe9fba07b3591be2e27f9e8ea')
conflicts=('pngout-static')
provides=('pngout-static')

#[ "$CARCH" = "x86_64" ] && md5sums=('148d68a518348330fd8047266552776c')

build()
{
  # extract
  cd $startdir/src/
  cd pngout-$pkgver-linux-static/$_pkgarch
  ln -s pngout-static pngout

  # bins
  mkdir -p $startdir/pkg/usr/bin
  install -m755 pngout-static $startdir/pkg/usr/bin/
  install -m755 pngout $startdir/pkg/usr/bin/
}
