pkgname=gcc-powerpc-wrs-vxworks
pkgver=4.8.0+svn196645
pkgrel=2
pkgdesc="GCC modded for VxWorks 6.3"
arch=('i686' 'x86_64')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL')
provides=('gcc-powerpc-wrs-vxworks')
conflicts=('vxworks-gcc-toolchain-bin')
depends=('wrs-vxworks-headers' 'binutils-powerpc-wrs-vxworks')
options=('!strip' '!libtool' '!zipman')
if test "$CARCH" == i686; then
	source=(https://www.dropbox.com/s/en8eqkngu03trqf/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('3248012a2dcaf7868d09e09009ae6abd2f5a45962a57587d9564e5aa6d4d36cac10206f2be7894c6bb5d4e065d63579891be4e6dc919574f999a95a400c7d358')
else
	source=(https://www.dropbox.com/s/9rnka0i4w5188be/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('ab674249c9b31a7ec75f79b892bac1f76867ab6d592aaf5921f994d12e9851c6ac71b4b1c6089a7748da074b54c51be8f327ed3adb0afcd65bc5dc4aaa4fc27d')
fi

package(){
  cd "$srcdir/$pkgname-$pkgver"
  cp -dpr --no-preserve=ownership ./usr $pkgdir/
}
