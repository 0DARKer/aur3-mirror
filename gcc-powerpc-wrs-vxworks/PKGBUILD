pkgname=gcc-powerpc-wrs-vxworks
pkgver=4.8.0
pkgrel=2
pkgdesc="GCC modded for VxWorks 6.3"
arch=('i686' 'x86_64')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL')
provides=('gcc-powerpc-wrs-vxworks')
conflicts=('vxworks-gcc-toolchain-bin')
depends=('wrs-vxworks-headers' 'binutils-powerpc-wrs-vxworks')
options=('!strip' '!libtool' '!zipman')
if test "$CARCH" == i686; then
	source=(https://www.dropbox.com/s/ok4onoha7jkwzo0/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('77abe65c6a121ce29283f2ea612efecd6950f4b2e8a557110dc35e5007804ee4954963f601eb8df2fcfe5d2407b77facec219d6d78af516d1090235aee64196f')
else
	source=(https://www.dropbox.com/s/z5tneco641s367n/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('0f9d21edcdaa4a525e232f319804cda736c98bfa371302caeecf218462b0b15c38a9697deea2d46d2f5e76cef91db553e92e2db971ca9cacd0cb2c99c27588c9')
fi

package(){
  cd "$srcdir/$pkgname-$pkgver"
  cp -dpr --no-preserve=ownership ./usr $pkgdir/
}
