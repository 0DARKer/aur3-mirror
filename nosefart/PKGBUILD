pkgname=nosefart
pkgver=2.7
pkgrel=2
pkgdesc="An NSF (NES sound format) player"
arch=('i686' 'x86_64')
url="http://$pkgname.sourceforge.net/"
license=('GPL')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-${pkgver}-mls.tar.bz2 \
	Makefile.diff)
md5sums=('f5b3a2037b2c5851b506898fc1f7d6bc'
         '0f5e94b0a1b0d704b2fb26233d7a3e20')

build() {
  cd $pkgname-$pkgver-mls

  patch -Np0 -i ../Makefile.diff || return 1

  make WANT_DEBUG=FALSE || return 1
  make PREFIX="$pkgdir"/usr install
}
