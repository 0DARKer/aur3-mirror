# Maintainer: Timofey Titovets <Nefelim4ag@gmail.com>
pkgname=systemd-swap
_pkgname=systemd-swap
pkgver=1.24
pkgrel=2
pkgdesc="This is script for creating hybrid swap space from zram and swap file.
Swap file - auto create dinamic growing swap file and mount it via loop
For enable: sudo systemctl enable systemd-swap
Config in /etc/systemd-swap.cfg"
arch=('any')
url="https://github.com/TimofeyTitovets/systemd-swap"
license=('GPLv3')
source=(systemd-swap.*)
depends=('systemd')
md5sums=('3e8d9e245b8bb821ebb969b58b414f7f'
         'c530971b37bb78e847cabfdf1028aacb'
         '09ba00c93e87b120a72d21f6e1c28809')

package() {
  install -Dm755 systemd-swap.service $pkgdir/etc/systemd/system/systemd-swap.service
  install -Dm755 systemd-swap.sh $pkgdir/usr/lib/systemd/scripts/systemd-swap.sh
  install -Dm755 systemd-swap.conf $pkgdir/etc/systemd-swap.conf
}