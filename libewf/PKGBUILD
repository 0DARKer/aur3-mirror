# Contributor: Adam Wolk <netprobe@gmail.com>
pkgname=libewf
pkgver=20100226
pkgrel=1
pkgdesc="A library for support of the Expert Witness Compression Format (EWF)"
url="http://sourceforge.net/projects/libewf"
license=('LGPL3')
depends=('util-linux-ng' 'zlib' 'openssl')
options=(!libtool)
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('a697d629bb74df1fa68f22658634fdb9')
arch=('i686' 'x86_64')

build() {
   cd $startdir/src/$pkgname-$pkgver
   ./configure --prefix=/usr --sysconfdir=/etc
   make || return 1
   make DESTDIR=$startdir/pkg install
}
