# Contributor: Adam Wolk <netprobe at gmail dot com>

pkgname=libewf
pkgver=20111015
pkgrel=1
pkgdesc="A library for support of the Expert Witness Compression Format (EWF)"
url="http://sourceforge.net/projects/libewf"
license=('LGPL3')
arch=('i686' 'x86_64')
depends=('util-linux-ng' 'zlib' 'openssl')
options=(!libtool)
									 #http://sourceforge.net/projects/libewf/files/libewf2-beta/libewf-beta-20111015/libewf-beta-20111015.tar.gz/download
source=(${pkgname}-${pkgver}.tar.gz::http://sourceforge.net/projects/${pkgname}/files/libewf2-beta/${pkgname}-beta-${pkgver}/${pkgname}-beta-${pkgver}.tar.gz/download)
#source=(${pkgname}-${pkgver}.tar.gz::http://sourceforge.net/projects/${pkgname}/files/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz/download)
md5sums=('2d3d45016bb8867a1daa5a5abafa6445')

build() {
  cd "$srcdir"/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
