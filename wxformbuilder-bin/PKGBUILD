# Maintainer: agvares <agvares13@gmail.com>

pkgname=wxformbuilder-bin
pkgver=3.1.68rc1
pkgrel=1
pkgdesc="wxWidgets Designer, GUI Builder, and RAD Tool"
arch=('i686' 'x86_64')
url="http://wxformbuilder.org/"
license=("GPL")
depends=('wxgtk')
makedepends=()
provides=('wxformbuilder')
conflicts=('wxformbuilder')
source=(https://launchpad.net/~wxformbuilder/+archive/release/+files/wxformbuilder_3.1.68.orig.tar.gz
        wxformbuilder.desktop)
md5sums=('7f610b47b03f303edd282f3a915cb39f'
         '3a7ec4a494797d7c566f6b3d770b1c02')

build() {
  cd $srcdir/wxformbuilder-3.1.68
  make CONFIG=Release
  
  cd output
  mkdir -p $pkgdir/usr/share/wxformbuilder
  cp -R xml $pkgdir/usr/share/wxformbuilder
  cp -R resources $pkgdir/usr/share/wxformbuilder
  cp -R plugins $pkgdir/usr/share/wxformbuilder
  cp -R bin $pkgdir/usr
  cp -R lib $pkgdir/usr

  install -D -m644 $srcdir/wxformbuilder.desktop $pkgdir/usr/share/applications/wxformbuilder.desktop
}
