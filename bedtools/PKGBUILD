# Maintainer: Thiago Yukio Kikuchi Oliveira <stratust@gmail.com>

pkgname=bedtools
pkgver=2.15.0
pkgrel=1
pkgdesc="bedtools: a flexible suite of utilities for comparing genomic features."
arch=('i686' 'x86_64')
url="http://code.google.com/p/bedtools"
license=('GPL')
source=(http://bedtools.googlecode.com/files/BEDTools.v2.15.0.tar.gz)
md5sums=(c0cbcb748f54ed99fce47c687bd0f260)
install='bedtools.install'

build() {
  cd $srcdir/BEDTools-Version-$pkgver
  export BEDTOOLS_LOCATION=/opt/bedtools
  make
	 cd $srcdir/BEDTools-Version-$pkgver/bin
	 mkdir -p $pkgdir$BEDTOOLS_LOCATION
	 cp * $pkgdir$BEDTOOLS_LOCATION
}
