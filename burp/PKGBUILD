# Maintainer: Dave Reisner <d@falconindy.com>

pkgname=burp
pkgver=1.6.2
pkgrel=1
pkgdesc="A simple AUR uploader"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/burp"
license=('GPL')
depends=('curl')
makedepends=('perl')
source=("http://github.com/downloads/falconindy/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('90978f314021a1b4f663e425e8592b64')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make PREFIX=/usr DESTDIR=${pkgdir} MANPREFIX=/usr/share/man install
}

# vim: ft=sh syn=sh
