# Contributor: grimi <grimi at poczta dot fm>

pkgname=xcursor-breeze
pkgver=20140522
pkgrel=1
pkgdesc="A really awesome part of kde5 cursor themes"
arch=('any')
url="http://gnome-look.org/content/show.php/Breeze?content=165371"
license=('GPL')
depends=('libxcursor')
source=("${pkgname}-${pkgver}.tar.gz::http://gnome-look.org/CONTENT/content-files/165371-Breeze.tar.gz")
md5sums=('7deef9ac1572296be2050e467830f1bd')


package() {
  find Breeze/ -type f -not -name "*~" \
      -exec install -Dm644 "{}" "${pkgdir}/usr/share/icons/{}" \;
  find Breeze/ -type l \
      -exec cp -d "{}" "${pkgdir}/usr/share/icons/{}" \;
}

