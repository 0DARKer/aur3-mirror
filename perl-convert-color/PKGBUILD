# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-convert-color
pkgver=0.08
pkgrel=1
pkgdesc="Color space conversions and named lookups"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~pevans/Convert-Color-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-list-utilsby')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/P/PE/PEVANS/Convert-Color-$pkgver.tar.gz")
md5sums=('4be0690e0a0011e56a75f967ac9ab7df')

build() {
	cd "$srcdir/Convert-Color-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Convert-Color-$pkgver"
	make install DESTDIR="$pkgdir"
}
