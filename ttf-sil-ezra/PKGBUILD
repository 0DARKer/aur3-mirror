# Contributor: Firmicus <firmicus āt gmx dōt net>

pkgname=ttf-sil-ezra
pkgver=1
pkgrel=1
pkgdesc="OpenType Hebrew font from SIL"
arch=('i686' 'x86_64')
url="http://scripts.sil.org/EzraSIL_Home"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=('http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=EzraSIL25.zip&filename=ezrasil25.zip')
md5sums=('b2764592ad1b030c0a5b63f21a7fa220')

build() {
  mkdir -p ${startdir}/pkg/usr/share/fonts/TTF 
  cd ${startdir}/src
  install -Dm644 ${startdir}/src/SILEOT.ttf ${startdir}/pkg/usr/share/fonts/TTF/ezra.ttf
  install -Dm644 ${startdir}/src/SILEOTSR.ttf ${startdir}/pkg/usr/share/fonts/TTF/ezrasr.ttf 
  # license...
  install -Dm644 ${startdir}/src/Licenses.txt ${startdir}/pkg/usr/share/licenses/${pkgname}/licenses.txt
  install -m644 ${startdir}/src/OFL-FAQ.txt ${startdir}/pkg/usr/share/licenses/${pkgname}/ofl-faq.txt
}

