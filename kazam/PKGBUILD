pkgname=kazam
pkgver=1.3.4
pkgrel=1
pkgdesc="A screencasting program with design in mind"
arch=('i686' 'x86_64')
url="https://launchpad.net/kazam"
license=('GPL')
groups=()
depends=('python2-cairo' 'pygtk' 'ffmpeg' 'gstreamer0.10' 'python2-xdg' 'python-xlib' 'libmatroska' 'gnome-python-desktop' 'python2-pycurl' 'python2-gdata' 'libtheora' 'python-keybinder' 'python2-distutils-extra')
conflicts=('kazam-bzr' 'kazam-stable-bzr')

source=("https://launchpad.net/${pkgname}/unstable/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
md5sums=('67cf54f5de4be407b509d369b3997bd9')

build() {
	:	
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}-0ubuntu1"
	python2 setup.py install --root ${pkgdir}
}

