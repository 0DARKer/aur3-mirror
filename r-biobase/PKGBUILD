pkgname=r-biobase
pkgver=2.8.0
pkgrel=1
pkgdesc="Biobase Library for the GNU R language"
arch=('i686' 'x86_64')
url="http://www.r-project.org/"
license=("Artistic-2.0")
depends=('r')
#makedepends=('rpmextract')
#source=(ftp://download.fedora.redhat.com/pub/fedora/linux/updates/12/SRPMS/R-Biobase-${pkgver}-${pkgrel}.fc12.src.rpm)
#md5sums=('53e9e3f704dc7b5d92283ac983151b13') 
source=(http://www.bioconductor.org/packages/2.6/bioc/src/contrib/Biobase_${pkgver}.tar.gz)
md5sums=('86ad29714a919b4c71dee79b7b6749c1') 
options=('!libtool' '!emptydirs')

build() {
 mkdir -p ${startdir}/pkg/usr/lib/R/library
 mkdir -p ${startdir}/src
# rpmextract.sh R-Biobase-${pkgver}-1.fc12.src.rpm
 cd ${startdir}/src
 tar -zxf Biobase_${pkgver}.tar.gz
 R CMD INSTALL Biobase -l ../pkg/usr/lib/R/library
 rm ${startdir}/pkg/usr/lib/R/library/R.css

}
