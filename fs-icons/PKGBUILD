# Maintainer: Simone Sclavi 'Ito' <darkhado@gmail.com>

pkgname=fs-icons
pkgver=0.6
pkgrel=1
pkgdesc="The Frank Souza icon theme"
url="http://franksouza183.deviantart.com/art/FS-Icons-288489126"
license=('custom')
arch=('any')
options=(!emptydirs)
source=("http://www.deviantart.com/download/288489126/fs_icons_by_franksouza183-d4rrbmu.zip")
sha256sums=('43e25a64ab31bbc707e1fe863668dc73552b0b277ab5d5d706815cb872a5b171')

package() {
	mkdir -p ${pkgdir}/usr/share/icons/
    for T in *tar.gz
            do
                local FOLDER=`basename $T .tar.gz`
                mkdir $FOLDER
                bsdtar -zxf $T -C $FOLDER
            done
    cp -r */ ${pkgdir}/usr/share/icons/
}
