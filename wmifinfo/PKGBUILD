# Contributor: gh0stwizard <vitaliy.tokarev@gmail.com>

pkgname=wmifinfo
pkgver=0.09
pkgrel=2
pkgdesc="wmifinfo is a simple applet showing basic network info for all available interfaces. It shows IP address, netmask, gateway and MAC address."
url="http://www.zevv.nl/wmifinfo/"
license="GPL"
depends=('xproto' 'libxpm')
conflicts=()
replaces=()
backup=()
install=
source=(http://www.zevv.nl/wmifinfo/$pkgname-$pkgver.tgz)
md5sums=('0c7a2a65e756cf41d94dea3e9268c7e7')

build() {
	cd $startdir/src/$pkgname-$pkgver
	mkdir -p $startdir/pkg/usr/bin
	make || return 1
	make BINDIR=$startdir/pkg/usr/bin install
}
