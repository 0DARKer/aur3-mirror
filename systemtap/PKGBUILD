# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Sebastien Binet <binet@farnsworth>
pkgname=systemtap
pkgver=1.6
pkgrel=1
pkgdesc="SystemTap provides free software (GPL) infrastructure to simplify the gathering of information about the running Linux system."
url="http://sourceware.org/systemtap/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('elfutils' 'nss' 'python')
makedepends=('gcc')
optdepends=('sqlite3' 'linux-fedora')
conflicts=()
replaces=()
backup=()
install=
source=(http://sources.redhat.com/systemtap/ftp/releases/$pkgname-$pkgver.tar.gz)
md5sums=('b845ec58bc04cf4cad5c897f67de1308')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}