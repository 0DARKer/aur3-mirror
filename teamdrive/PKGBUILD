# Maintainer: Benjamin Hedrich <kiwisauce <at> pagenotfound.de>
pkgname=teamdrive
pkgver=2.3.140
pkgrel=1
pkgdesc="TeamDrive synchronises your data quickly and securely."
arch=('i686' 'x86_64')
url="http://www.teamdrive.com/"
license=('CUSTOM')
depends=()
source=("http://s3download.teamdrive.net/TeamDrive-$pkgver-Linux-x86-Install_TMDR" 
	"teamdrive.desktop")
options=(!strip)
md5sums=('8e3d38227c1ad057e97370a7cf48b4b4'
         '1b01d523f0d784da629daddbcf33ee12')

build() {
    
    cd $srcdir

    chmod +x TeamDrive-$pkgver-Linux-x86-Install_TMDR

   ./TeamDrive-$pkgver-Linux-x86-Install_TMDR --mode silent --prefix $pkgdir/opt/teamdrive
   
    install -Dm644 "$srcdir/teamdrive.desktop" "$pkgdir/usr/share/applications/teamdrive.desktop"
}
