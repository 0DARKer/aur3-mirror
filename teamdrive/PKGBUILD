# Former maintainer: Xunhua Guo <xunhua.guo@gmail.com>
# Maintainer: Robert Orzanna <orschiro@gmail.com>
pkgname=teamdrive
pkgver=3.1.0_316
pkgrel=2
pkgdesc="Keeps data synchronised between various computers automatically."
arch=('i686' 'x86_64')
url="http://www.teamdrive.com/"
license=('CUSTOM')
depends=('')
if [[ "$CARCH" == "x86_64" ]]; then
	depends=('lib32-qt4'
			'lib32-glib2'
			'lib32-libxext'
			'lib32-libxrender'
			'lib32-fontconfig'
			'lib32-libsm'
			'lib32-sqlite'
			)			
fi
source=("http://s3download.teamdrive.net.s3.amazonaws.com/3.1.316/TMDR/linux/Install-TeamDrive-3.1.0.316_TMDR.run"
	"teamdrive.desktop")
options=(!strip)
md5sums=('ae0b29059160365f54fcc0add833e4da'
         '8f2b28fb16574d3dc1ea3cf9081c2caf')

build() {
    
    cd $srcdir

    chmod +x Install-TeamDrive-3.0.7.238_TMDR.run

    ./Install-TeamDrive-3.0.7.238_TMDR.run --mode unattended --prefix $pkgdir/opt/teamdrive
   
    install -Dm644 "$srcdir/teamdrive.desktop" "$pkgdir/usr/share/applications/teamdrive.desktop"
}

package() {

    rm "$pkgdir/opt/teamdrive/Uninstall TeamDrive 3.desktop"
    rm "$pkgdir/opt/teamdrive/uninstall"
}
