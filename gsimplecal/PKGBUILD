# Maintainer: jsteel <jsteel at vorx dot com>
# Contributor: Victor Feight <vrfeight3 at gmail dot com>

pkgname=gsimplecal
pkgver=1.0
pkgrel=1
pkgdesc="Simple and lightweight GTK calendar"
arch=('i686' 'x86_64')
url="http://dmedvinsky.github.com/gsimplecal"
license=('BSD')
depends=('gtk2')
source=(https://github.com/downloads/dmedvinsky/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('f485214d398a8b846764b1cdfa180655')

build() {
    cd ${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
    make DESTDIR=${pkgdir} install
}
