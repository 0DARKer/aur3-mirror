pkgname=gsimplecal
pkgver=1.1
pkgrel=1
pkgdesc="Simple and lightweight GTK calendar"
arch=('i686' 'x86_64')
url="http://dmedvinsky.github.com/gsimplecal"
license=('BSD')
depends=('gtk2')
source=(https://github.com/downloads/dmedvinsky/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('bfec9b5445c2b50f4586f0c5a400f41b')

build() {
    cd ${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
    make DESTDIR=${pkgdir} install
}
