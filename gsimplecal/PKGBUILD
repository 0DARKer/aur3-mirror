# Maintainer:  Victor Feight <vrfeight3 at gmail dot com>

pkgname=gsimplecal
pkgver=0.6
pkgrel=1
pkgdesc="Simple gtk calendar"
arch=('i686' 'x86_64')
url="http://code.google.com/p/gsimplecal/"
license=('GPL')
depends=('gtk2')
conflicts=('gsimplecal-hg')
source=(http://gsimplecal.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('5cdcbc545309fbc1d35be962344af1a7')

build() {
    cd ${pkgname}-${pkgver}

    ./configure --prefix=/usr || return 1
    make || return 1
    make DESTDIR=${pkgdir} install || return 1
}
