# Maintainer: Andrei Thorp <garoth at the lovely gmail dot com>
pkgname=honpurple
pkgver=0.5.2
pkgrel=1
pkgdesc="libpurple plugin for the Heroes of Newerth chat server."
arch=('i686' 'x86_64')
url="http://code.google.com/p/honpurple"
license=('GPL')
depends=("libpurple" "glib2")
source=( "http://honpurple.googlecode.com/files/$pkgname-$pkgver.tar.bz2" )
md5sums=('141743ae52b344fcb9c520ac1510dfdb')

build() {
  cd "$srcdir"
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}

