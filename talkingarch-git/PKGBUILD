# Maintainer: Chris Brannon <cmbrannon79@gmail.com>
pkgname=talkingarch-git
pkgver=20130802
pkgrel=1
pkgdesc="Generates Chris Brannon's live-CD for the blind"
arch=('any')
url="http://wiki.archlinux.org/index.php/Arch_Linux_for_the_blind"
license=('GPL')
depends=(archiso-git)
# I don't want folks using archiso from extra, since it's old.
makedepends=(git curl sox mpg123)
provides=(talkingarch)
conflicts=(talkingarch)
source=(http://the-brannons.com/tarch/livecd-sound/pick-a-card.mp3)
sha256sums=('13b388c85c0e8c3a3c959aeaef23c5281962f38e03c8c5cadc64272c6295056b')

_gitroot=https://github.com/CMB/TalkingArch.git
_gitname=TalkingArch

build() {
  cd "${srcdir}"
  msg "Connecting to github.com GIT server..."

  if [ -d "${srcdir}/$_gitname" ]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
 
  if [ -d "${srcdir}/$_gitname-build" ]; then
    rm -rf "${srcdir}/$_gitname-build"
  fi

  git clone "${srcdir}/$_gitname" "${srcdir}/$_gitname-build" || return 1
  cd "${srcdir}/$_gitname-build"
  cp "$srcdir/pick-a-card.mp3" .
}

package() {
  cd "${srcdir}/$_gitname-build"

  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
