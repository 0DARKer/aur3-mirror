# Contributor: HuntXu <huntxu@live.cn>

pkgname=gromit
pkgver=20041213
pkgrel=1
pkgdesc="Gromit (GRaphics Over MIscellaneous Things) is a small tool to make annotations on the screen."
url="http://www.home.unix-ag.org/simon/gromit/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('glib2')
makedepends=('make')
source=(http://www.home.unix-ag.org/simon/gromit/$pkgname-$pkgver.tar.gz)
md5sums=('86fd67cfe62b1b955ddcd821e14a8c14')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make || return 1
  install -Dm755 ./gromit $pkgdir/usr/bin/gromit
  install -Dm644 ./README $pkgdir/usr/share/gromit/README
  install -Dm644 ./AUTHORS $pkgdir/usr/share/gromit/AUTHORS
  install -Dm644 ./ChangeLog $pkgdir/usr/share/gromit/ChangeLog
  install -Dm644 ./COPYING $pkgdir/usr/share/gromit/COPYING
}
