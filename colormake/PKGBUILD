# Contributor: Juergen Graefe <jg72@gmx.de>
pkgname=colormake
pkgver=0.2
pkgrel=2
pkgdesc="A simple wrapper around make to make it's output more readable."
arch=('i686' 'x86_64')
url="http://bre.klaki.net/programs/colormake/"
license=('GPL')
depends=('perl')
source=(${url}${pkgname}-${pkgver}.tar.gz)
md5sums=('1029dae70e7a23cff0f6a11f3ceffbe1')

build() { 
  cd "${srcdir}/${pkgname}"
  mkdir -p ${pkgdir}/usr/bin/
  mv cmake colormake
  cp colormake.pl colormake clmake ${pkgdir}/usr/bin/
}
