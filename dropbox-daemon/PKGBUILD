# Maintainer: Jason St. John <jstjohn .. purdue . edu>
# Contributor: Tim Gerhard <tim-gerhard@schnellbach-beltheim.de>
# Contributor: TechliveZheng <techlivezheng (at) gmail (dot) com>

pkgname=dropbox-daemon
pkgver=0.8
pkgrel=4
pkgdesc="Installs an rc.d script for Dropbox, optionally specifying the user it runs as."
arch=('any')
# Note: This URL is the home page from the previous maintainer, sylar_5.
url="http://dl.dropbox.com/u/8192972/arch_pacs/dropbox-daemon.html"
license=('MIT')
depends=('dropbox')
replaces=('dropboxd-userspace')
backup=('etc/conf.d/dropboxd.conf')
install=dropbox-daemon.install
source=('dropboxd' 'dropboxd.conf')
sha512sums=('a2b5f6012ec339551754a88999a81678d2c61857957aa9a247808a042e2f598cd065baef4f21ff76e606e19b1dff52ead37e62005706fa05f0a33892eeb82a4a'
            '109e17fca15843c5074ed51ae9a2fb0af16b1145d4d42e4ce4f023004f5a3a88120753314fd53e958cd50305d2dc7da53dd7abc7cf7cb23d68e7b315dd0ce7b4')

package() {
  cd "$srcdir"
  mkdir -p "${pkgdir}/etc/conf.d/"
  mkdir -p "${pkgdir}/etc/rc.d/"
  install -m644 dropboxd.conf "${pkgdir}/etc/conf.d/"
  install -m755 dropboxd "${pkgdir}/etc/rc.d/"
}

