# Maintainer: Tim Gerhard <tim-gerhard@schnellbach-beltheim.de>
# Contributor: TechliveZheng <techlivezheng (at) gmail (dot) com>
pkgname=dropbox-daemon
pkgver=0.5
pkgrel=4
depends=('bash' 'dropbox')
replaces=('dropboxd-userspace')
conflicts=('dropboxd-userspace')
pkgdesc="start dropboxd as a real daemon, running as a specified user."
arch=('any')
url="http://dl.dropbox.com/u/8192972/arch_pacs/dropbox-daemon.html"
license=('MIT')
install="dropbox-daemon.install"
source=('dropboxd' 'dropboxd-userspace' 'dropboxd.conf')

build() {
	cd $srcdir
	mkdir -p ${pkgdir}/etc/rc.d/
	mkdir -p ${pkgdir}/etc/conf.d/
	install -m644 dropboxd.conf ${pkgdir}/etc/conf.d/
	install -m755 dropboxd ${pkgdir}/etc/rc.d/
	install -m755 dropboxd-userspace ${pkgdir}/etc/rc.d/
}
md5sums=('50200298eef20d1fd412188fe389a1e1'
         'a544bfda2cef11e32b4822b336440e0f'
         '2aa3b6bcc8cc86deacde148da90fd2a6')
