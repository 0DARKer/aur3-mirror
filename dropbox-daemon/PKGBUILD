# Contributor: Luke Turner <contact@luketurner.org>

pkgname="dropbox-daemon"
pkgver=1.0
pkgrel=1
pkgdesc="A real dropbox daemon w/CLI interface"
arch=("i686" "x86_64")
url="http://blog.luketurner.org"
license=('GPL')
depends=("python2" "dropbox")
conflicts=("dropbox-cli")
source=("dropbox-daemon" "https://www.dropbox.com/download?dl=packages/dropbox.py" "dropbox_force_root.patch")
md5sums=('311f9c15d2340a11a9703344ea4c89c6'
         '345daaa86f39d7a830b0ec92670eb541'
         '6eeb4978fb30be1fa0cacf0f47b6607a')

build(){
    sed -e "s/python/python2/g" $srcdir/dropbox.py > $srcdir/dropbox
    patch < $srcdir/dropbox_force_root.patch
}

package() {
    install -D -m 755 "$srcdir/dropbox-daemon" "$pkgdir/etc/rc.d/dropboxd"
    install -D -m 755 "$srcdir/dropbox" "$pkgdir/usr/bin/dropbox"
}

