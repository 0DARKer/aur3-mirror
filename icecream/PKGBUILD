#Contributor: Urs Wolfer <uwolfer @ fwo.ch>

pkgname=icecream
pkgver=0.9.6
pkgrel=1
pkgdesc="Icecream takes compile jobs from your build and distributes it to remote machines allowing a parallel build on several machines"
url="http://en.opensuse.org/Icecream"
license="GPL"
depends=('gcc')
arch=('i686' 'x86_64')
install=(icecream.install)
source=(ftp://ftp.suse.com/pub/projects/$pkgname/icecc-$pkgver.tar.bz2 icecream-daemon icecream-scheduler-daemon)
md5sums=('c6dacb3f28eade45f603a99245cde4fd'
         '1766d158389c9f016cfe095367f0856c'
         '46823b15d81ecf6493d64c7c974ef4a6'
)

build() {
        cd $startdir/src/icecc-$pkgver
        #make -f Makefile.cvs
        ./configure --prefix=/opt/icecream || return 1
        make || return 1
        make DESTDIR=$startdir/pkg install || return 1
        install -D -m755 ../icecream-daemon $startdir/pkg/etc/rc.d/icecream
        install -D -m755 ../icecream-scheduler-daemon $startdir/pkg/etc/rc.d/icecream-scheduler
}
