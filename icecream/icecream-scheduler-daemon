#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions


case "$1" in
	start)
		stat_busy "Starting Icecream Scheduler Daemon"
		/opt/icecream/sbin/scheduler -d &>/dev/null
		if [ $? -gt 0 ]; then
			stat_fail
		else
			add_daemon icecream-scheduler
			stat_done
		fi
		;;
	stop)
		stat_busy "Stopping Icecream Scheduler Daemon"
		killall /opt/icecream/sbin/scheduler > /dev/null 2>&1 || true
		if [ $? -gt 0 ]; then
			stat_fail
		else
			rm_daemon icecream-scheduler
			stat_done
		fi
		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	*)
		echo "usage: $0 {start|stop|restart}"
esac
exit 0

