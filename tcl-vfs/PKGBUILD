pkgname=tcl-vfs
pkgver=20140310
pkgrel=1
pkgdesc="enables tcl virtual file systems"
arch=('i686' 'x86_64')
url="http://www.endorser.org/en/blog/tcl/cookfs"
license=('custom')
depends=(tcl)
makedepends=(tcl)
conflicts=(tclvfs-cvs)
source=(https://github.com/l3iggs/tcl-vfs/archive/v${pkgver}.tar.gz)
md5sums=('ccf5916afc790d27d7ad6cc2a52f7849')

build() {
  cd "$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -D -m644 license.terms "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
