# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>

pkgname=flexget
_pkgname=FlexGet
pkgver=1.0r2100
pkgrel=2
pkgdesc="Automate downloading or processing content (torrents, podcasts, etc.)"
arch=(any)
url="http://flexget.com/"
depends=('python2' 'cherrypy' 'python-flask' 'python-progressbar' \
	'python2-pynzb' 'pyrss2gen' 'python2-sqlalchemy' 'python2-html5lib' \
	'python-beautifulsoup' 'python-yaml' 'python2-feedparser')
makedepends=('python2-distribute')
license=('MIT')
install=('flexget.install')
source=("http://download.flexget.com/unstable/${_pkgname}-${pkgver}.tar.gz")
md5sums=('132655ec75d1d67677d5d7b4716e3003')

build() {
	cd "${srcdir}/${_pkgname}-${pkgver}"
        python2 setup.py build

}
package() {
	cd "${srcdir}/${_pkgname}-${pkgver}"
	python2 setup.py install --root=${pkgdir}/ optimize=1
	install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}


