pkgname=mwlib.rl
pkgver=0.12.7
pkgrel=1
pkgdesc="Converts MediaWiki articles to pdf, odf, and docbook"
arch=('i686')
url="http://code.pediapress.com/wiki/wiki"
license="BSD"
depends=('python2>=2.4' 'mwlib.ext' 'texvc' 'pygments' 'fribidi' 'ploticus'
'imagemagick' 'ghostscript' 'ocaml' 'gcc' 'mwlib' )
makedepends=('mercurial' 'setuptools' 'docutils')
source=("http://pypi.python.org/packages/source/m/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('d3ad92d844705801ffcbb2a5fd208130')


build() {
  cd $startdir/src/$pkgname-$pkgver

  python2 setup.py install --root=$startdir/pkg || return 1
}
