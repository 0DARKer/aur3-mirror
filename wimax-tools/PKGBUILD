pkgname=wimax-tools
pkgver=1.4.4
pkgrel=1
pkgdesc="WiMAX Low-Level userspace tools"
arch=('i686' 'x86_64')
url="http://linuxwimax.org"
license=('BSD')
depends=('kernel26' 'libnl')
source=('http://linuxwimax.org/Download?action=AttachFile&do=get&target=wimax-tools-1.4.4.tar.gz')
md5sums=('6acd0e6971952a761c98e9b4c65e6b4e')

build() {
  cd ${srcdir}/wimax-tools-1.4.4
  ./configure --with-libnl1=/usr/include/netlink/ --mandir=/usr/share/man --prefix=/usr
  make
  make DESTDIR=${pkgdir} install
}
