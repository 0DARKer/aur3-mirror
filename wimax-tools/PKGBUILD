pkgname=wimax-tools
pkgver=1.4.5
pkgrel=1
pkgdesc="WiMAX Low-Level userspace tools"
arch=('i686' 'x86_64')
url="http://linuxwimax.org"
license=('BSD')
depends=('libnl')
source=("http://linuxwimax.org/Download?action=AttachFile&do=get&target=wimax-tools-${pkgver}.tar.gz")
md5sums=('db63d6c239c2e7a1a3a09921988f5a29')

build() {
  cd ${srcdir}/wimax-tools-${pkgver}
  ./configure --with-libnl1=/usr/include/netlink/ --mandir=/usr/share/man --prefix=/usr
  make
  make DESTDIR=${pkgdir} install
}
