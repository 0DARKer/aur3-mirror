# Maintainer: Alexandre Bique <bique.alexandre@gmail.com>

pkgname=paste-binouse
pkgver=1.2
pkgrel=1
pkgdesc="paste-binouse is a standalone C++ web pastebin"
arch=('i686' 'x86_64')
url="http://github.com/abique/paste-binouse"
license=('AGPL3')
makedepends=('cmake>=2.8' 'libmimosa>=0.5.1')
depends=('sqlite3' 'gnutls' 'protobuf')
options=()
source=("https://github.com/abique/paste-binouse/tarball/${pkgver}"
  "paste-binoused"
  "paste-binoused.confd"
  "paste-binouse.install")
md5sums=('c8255512b88e1ed88f03260ad30ec925'
         'a80411c7534eb59133d54062950d7bd0'
         '5c3fe9f7f8c01666284c260fc0d49ff9'
         '53f2cae2c52165daf5668392e2c883e4')
backup=('etc/conf.d/paste-binoused')
install='paste-binouse.install'

build() {
  cd ${srcdir}/abique-paste-binouse-* &&
  mkdir build &&
  cd build &&
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. &&
  make
}

package() {
  cd ${srcdir}/abique-paste-binouse-*/build &&
  DESTDIR=${pkgdir} make install
  install -Dm755 "${srcdir}"/paste-binoused "${pkgdir}"/etc/rc.d/paste-binoused
  install -Dm644 "${srcdir}"/paste-binoused.confd "${pkgdir}"/etc/conf.d/paste-binoused
}
