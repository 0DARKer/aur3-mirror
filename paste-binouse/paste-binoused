#!/bin/bash

# general config
. /etc/rc.conf
. /etc/rc.d/functions
. /etc/conf.d/paste-binoused

getPID() {
    echo $(pgrep -u paste-binouse paste-binoused 2>/dev/null);
}

case "$1" in
    start)
        stat_busy "Starting paste-binouse"
        [ ! -d /var/run/paste-binoused ] && \
            install -d -g paste-binouse -o paste-binouse /var/run/paste-binoused &>/dev/null
        if [ -z "$(getPID)" ]; then
            su --shell=/bin/bash --command="/usr/bin/paste-binoused $PASTE_BINOUSE_ARGS" paste-binouse &>/dev/null &
            if [ $? -gt 0 ]; then
                stat_fail
                exit 1
            else
                echo $(getPID) > /var/run/paste-binoused/paste-binoused.pid
                add_daemon paste-binoused
                stat_done
            fi
        else
            stat_fail
            exit 1
        fi
        ;;

    stop)
        stat_busy "Stopping paste-binouse"
        if [ ! -z "$(getPID)" ]; then
            timeo=30
            kill $(getPID) &> /dev/null
            if [ $? -gt 0 ]; then
                stat_fail
                exit 1
            fi
            while [ ! -z "$(getPID)" -a $timeo -gt 0 ]; do
                sleep 1
                let timeo=${timeo}-1
            done
            if [ -z "$(getPID)" ]; then
                rm -f /var/run/paste-binoused/paste-binoused.pid &>/dev/null
                rm_daemon paste-binoused
                stat_done
            else
                stat_fail
                exit 1
            fi
        else
            stat_fail
            exit 1
        fi
        ;;

    restart)
        $0 stop
        $0 start
        ;;
    *)
        echo "usage: $0 {start|stop|restart}"
esac
exit 0
