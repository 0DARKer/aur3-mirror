# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=focuswriter
pkgver=1.3.2.1
pkgrel=1
pkgdesc="A simple fullscreen word processor"
arch=('i686' 'x86_64')
url="http://gottcode.org/$pkgname/"
license=('GPL3')
depends=('qt' 'hunspell' 'libao' 'libzip')
source=(http://gottcode.org/$pkgname/$pkgname-$pkgver-src.tar.bz2)
md5sums=('2fd43b538e2f29bde23955a8a93d6ce0')
sha256sums=('c15ba9b1d7ec5cc1e1449da89b529ce9e4b0e022ecb29db0ce9c35f4b790a4cc')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  qmake PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make INSTALL_ROOT="$pkgdir/" install
}
