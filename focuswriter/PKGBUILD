# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=focuswriter
pkgver=1.3.5.1
pkgrel=1
pkgdesc="A simple fullscreen word processor"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL3')
depends=('qt' 'hunspell' 'libzip' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')
optdepends=('sdl_mixer: typewriter sound effects')
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('271852e9c8a15da534201a7dd5d15daf')
sha256sums=('fa249f635d278ffdfc013f1d026c4e0aac85d6aa197971e5d4db13e5997072c1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
