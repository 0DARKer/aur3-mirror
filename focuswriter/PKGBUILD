# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=focuswriter
pkgver=1.3.5
pkgrel=1
pkgdesc="A simple fullscreen word processor"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL3')
depends=('qt' 'hunspell' 'libzip' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')
optdepends=('sdl_mixer: typewriter sound effects')
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('0f351e405644062a76285ff519eeb7a0')
sha256sums=('8dd941cedfa63f7bd20b7645607ef8fdf7f1dfcf5a84354b21274b6023b2f4a8')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
