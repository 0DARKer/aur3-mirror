# Contributor: <>

pkgname=thunderbird-official-gb
_pkgname=thunderbird
pkgver=2.0.0.16
pkgrel=1
pkgdesc="The official en-GB Thunderbird build, from mozilla.org"
url="http://www.mozilla.com/thunderbird/"
depends=('gtk2>=2.12.0' 'gcc-libs' 'libidl2' 'mozilla-common' 'nss>=3.11.5' 'libxt')
license=('MPL' 'LGPL' 'GPL')
arch=('i686')
source=(ftp://ftp.mozilla.org/pub/mozilla.org/thunderbird/releases/${pkgver}/linux-i686/en-GB/$_pkgname-$pkgver.tar.gz
        thunderbird.desktop)
conflicts=('thunderbird')
provides=('thunderbird')

md5sums=('a43adb43a72ed521fefd3f696dc4feee'
         '470f1c75954bdb92dbf28bcbc7f545d1')

build() {
   cd $startdir/src/
  mkdir -p $startdir/pkg/usr/lib
  cp -r $_pkgname $startdir/pkg/usr/lib
  mkdir -p $startdir/pkg/usr/bin
  ln -s /usr/lib/$_pkgname/$_pkgname $startdir/pkg/usr/bin/$_pkgname

  mkdir -p $startdir/pkg/usr/share/applications
  mkdir -p $startdir/pkg/usr/share/pixmaps

  install -m644 -D $startdir/src/$_pkgname/icons/mozicon50.xpm \
	$startdir/pkg/usr/share/pixmaps/$_pkgname.xpm || return 1
  install -m644 $startdir/src/$_pkgname.desktop \
	$startdir/pkg/usr/share/applications/ || return 1
}
