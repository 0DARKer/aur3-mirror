# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=skf
pkgver=1.99.9
_sfver=61926
_mjver=1.99
pkgrel=1
pkgdesc='Simple Kanji Filter - i18n kanji converter'
arch=('i686' 'x86_64')
url="http://sourceforge.jp/projects/skf/"
license=('BSD')
depends=('glibc')
makedepends=('perl')
_mirror="jaist" # "jaist" "iij" "osdn" "keihanna"
source=("http://${_mirror}.dl.sourceforge.jp/skf/${_sfver}/skf_${pkgver}.tar.gz")

build() {
	cd "${srcdir}/skf-${_mjver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/skf-${_mjver}"
	make DESTDIR="$pkgdir" install
	install -Dm644 copyright "${pkgdir}/usr/share/licenses/${pkgname}/copyright"
}

md5sums=('e163abdc09f63e5fd7a9a46730faf506')
