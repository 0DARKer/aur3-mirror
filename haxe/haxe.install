post_install() {
  echo 'Setting HAXE_LIBRARY_PATH=/opt/haxe/std:.'
  export HAXE_LIBRARY_PATH=/opt/haxe/std:.

  echo 'To make this permanent, please define HAXE_LIBRARY_PATH in your'
  echo '.bashrc:'
  echo
  echo 'export HAXE_LIBRARY_PATH=/opt/haxe/std:. # the ":." part is important'
}

