# Maintainer: Logan Allen <loganfynne at gmail dot com>
pkgname=epistle
pkgver=0.05.1
pkgrel=7
pkgdesc='Lightweight Social Email Client - Gmail, Twitter, and Facebook Support'
arch=('any')
url="https://bitbucket.org/loganfynne/epistle"
license=('GPL')
depends=('python2' 'pygtk' 'pywebkitgtk')
source=(https://bitbucket.org/loganfynne/epistle/get/90c0aebcfb77.tar.bz2)
md5sums=('c8c14269a2d4b8da8b3e20989ba34c71')

package() {
  mkdir -p ${pkgdir}/usr/share/applications
  mkdir -p ${pkgdir}/usr/lib/epistle
  mkdir -p ${pkgdir}/usr/bin
  cp -r */* ${pkgdir}/usr/lib/epistle/
  chmod +x ${pkgdir}/usr/lib/epistle/epistle.py
  cp */epistle ${pkgdir}/usr/bin/
  chmod +x ${pkgdir}/usr/bin/epistle
  cp */epistle.desktop ${pkgdir}/usr/share/applications/
}
