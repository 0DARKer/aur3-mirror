pkgname=nedetlesmaki
pkgver=r1129.d70e919
pkgrel=1
pkgdesc='Sokoban game'
arch=('i686', 'x86_64')
license=('MIT' 'FAL')
url="http://geekygoblin.org/ned-et-les-maki/"
depends=('java-runtime')
makedepends=('maven')
source=("git+https://github.com/devnewton/nedetlesmaki.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/nedetlesmaki"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build()
{
  cd "$srcdir/nedetlesmaki"
  mvn package
}

package ()
{
  cd "$srcdir/nedetlesmaki"
  install -d "$pkgdir"/usr/bin
  install -d "$pkgdir"/usr/share/java/nedetlesmaki
  install -m644 game/target/nedetlesmaki-*.jar "$pkgdir"/usr/share/java/nedetlesmaki
  install -m644 game/target/lib/*.jar "$pkgdir"/usr/share/java/nedetlesmaki
  cp -r game/data game/target/natives "$pkgdir"/usr/share/java/nedetlesmaki
  echo "#!/bin/sh" > run
  echo 'exec "$JAVA_HOME/bin/java" -Djava.library.path=/usr/share/java/nedetlesmaki/natives -jar `ls /usr/share/java/nedetlesmaki/nedetlesmaki-game-*.jar` "$@"' >> run
  install -m755 run "$pkgdir"/usr/bin/nedetlesmaki
  install -D -m644 packages/deb/src/launchers/nedetlesmaki.desktop "$pkgdir"/usr/share/applications/nedetlesmaki.desktop
  sed -i "s|/opt/nedetlesmaki|/usr/share/java/nedetlesmaki|g" "$pkgdir"/usr/share/applications/nedetlesmaki.desktop
}
