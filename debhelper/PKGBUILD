# Contributor: Andrei "Garoth" Thorp <garoth "at the nice" gmail "dot" com>
pkgname=debhelper
pkgver=8.0.0
pkgrel=1
pkgdesc="Debian's debhelper tools for people wanting to build debs."
arch=('i686' 'x86_64')
url="http://kitenet.net/~joey/code/debhelper/"
license=('GPL')
depends=('binutils' 'dpkg>=1.14.15' 'file>=3.23' 'html2text' 'man-db>=2.5.1' 'perl>=5.6.0' 'po-debconf')
makedepends=('po4a>=0.24' 'man-db>=2.5.1' 'file>=3.23')
optdepends=('dh-make')
backup=()
source=( "https://launchpad.net/debian/+archive/primary/+files/${pkgname}_${pkgver}.tar.gz" )
md5sums=('000860ea8f7ac6d190d75a9c4155050a')

build() {
  cd "$srcdir/$pkgname"

  make || return 1
  make DESTDIR="$pkgdir/" install
}

