# Contributor: Alessio 'mOLOk' Bolognino <themolok@gmail.com>
pkgname=mencal
pkgver=2.3
pkgrel=1
pkgdesc="A simple variation of the well-known unix command cal"
arch=('i686')
url="http://kyberdigi.cz/projects/mencal/english.html"
license="GPL"
depends=('perl')
source=(http://kyberdigi.cz/projects/mencal/$pkgname-$pkgver.tar.gz)
md5sums=('e0fa5665b8f7772521bb95379bfdec20')

build() {
  mkdir -p $startdir/pkg/usr/share/
  mkdir -p $startdir/pkg/usr/bin
  cp -a $startdir/src/$pkgname-$pkgver $startdir/pkg/usr/share/$pkgname
  cd $startdir/pkg/usr/bin
  ln -s ../share/$pkgname/$pkgname .
}
