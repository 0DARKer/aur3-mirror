# Maintainer: Levente Polyak <levente[at]leventepolyak[dot]net>

pkgname=ropper
_pkgname=Ropper
pkgver=1.1.0
pkgrel=1
pkgdesc="Show information about binary files and find gadgets to build rop chains for different architectures"
arch=('any')
url="https://github.com/sashs/Ropper"
license=('GPL2')
depends=('python2-capstone')
makedepends=('python2-setuptools')
source=(https://github.com/sashs/${_pkgname}/archive/v${pkgver}.tar.gz)
sha512sums=('57eaaa01215822ebfcebef3685eb305d098871b7e67601bc841d35d8090434fd383b6ad115507e532dba7535eef93a933d96a031d93b9e7d69c59bd19cb92c54')

prepare() {
  cd ${_pkgname}-${pkgver}
  sed -ri 's/(ropper)\.py/\1/g' ropperapp/options.py
}

build() {
  cd ${_pkgname}-${pkgver}
  python2 setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  python2 setup.py install -O1 --root="${pkgdir}"
  install -Dm 644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm 644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
}

# vim:set ts=2 sw=2 et:
