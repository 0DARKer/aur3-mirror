pkgname=django-dajaxice
pkgver=0.5.1
_commit=0aac542
pkgrel=1
pkgdesc="Easy to use AJAX library for django. Dajaxice's main goal is to trivialize the asynchronous communication between the django server side code and your JS code."
arch=(any)
url=http://dajaxproject.com
license=(BSD)
depends=(python)
source=($pkgname-$pkgver.tar.gz::https://github.com/jorgebastida/$pkgname/tarball/$pkgver)
sha256sums=('9c77c62d9d53cd5ecc72452e190b06fccd9b9508a03649502277bd6573222777')
sha512sums=('e2dfc43c3ebf2f47811d4b746149d6199977bd50337bf5e7a34d3be2ffaaaa2c0780112f1e6f74f980c3c1a2aaa7321e7fdf2cff17e62e285e0b264cd00f0180')

package() {
    cd jorgebastida-$pkgname-$_commit/
    python setup.py install --root="$pkgdir"
    install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
