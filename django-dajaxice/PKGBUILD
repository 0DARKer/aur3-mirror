license=(GPL)
depends=(python)
source=($pkgname-$pkgver.tar.gz::https://github.com/jorgebastida/$pkgname/tarball/$pkgver)
sha256sums=('9c77c62d9d53cd5ecc72452e190b06fccd9b9508a03649502277bd6573222777')
sha512sums=('e2dfc43c3ebf2f47811d4b746149d6199977bd50337bf5e7a34d3be2ffaaaa2c0780112f1e6f74f980c3c1a2aaa7321e7fdf2cff17e62e285e0b264cd00f0180')

package() {
    cd "$srcdir"/jorgebastida-$pkgname-$_commit/
