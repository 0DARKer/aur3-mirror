#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=mimeo
pkgver=2013.2
pkgrel=1
pkgdesc='Open files by MIME-type or file name using regular expressions.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/mimeo"
depends=(python2 python2-xdg file)
optdepends=('MIME-types: for recognizing more MIME-types')
source=(
  http://xyne.archlinux.ca/projects/mimeo/src/mimeo-2013.2.tar.xz
  http://xyne.archlinux.ca/projects/mimeo/src/mimeo-2013.2.tar.xz.sig
)
sha512sums=(
  9a507b98b733e118c94f6e1d5e21d073e8e69979add14e117e900824dfbaf4a6a932a9e7a3104265430bfb254e1980edd9b96176c058465ae99d9f6eabb5d9ba
  0937b26648211fd3a6ae5080a5ed623e428f91e05f7d4dc7965e2179041982d1571d6cecef9a39c83f60a1cc2ddb48ff1dc092ff2719a58ba649a47704ee0320
)
md5sums=(
  9ef233c5e23951cec6a2dd2dbb633c02
  0771568b839a6ff4193c1e8e582c7acd
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}


