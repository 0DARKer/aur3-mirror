pkgname=mimeo
pkgver=2012.12.24
pkgrel=1
pkgdesc='Open files by MIME-type or file name using regular expressions.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/mimeo"
depends=(python2 file)
optdepends=('MIME-types: for recognizing more MIME-types')
source=(
  http://xyne.archlinux.ca/projects/mimeo/src/mimeo-2012.12.24.tar.xz
  http://xyne.archlinux.ca/projects/mimeo/src/mimeo-2012.12.24.tar.xz.sig
)
sha512sums=(
  109a61a0baf6626a4d4eae0ba484f2634dcd8c1e37c6f00f41d2e06e3313671d2e46beb02851a5b5ebdba406aa37134c3ea5ddc1a327ee27d644ce5ca784aadd
  283e8d11c08a65b778f44e940e7a9f405af47c31671130eb043283aaaa01490a8601b9638185af3115c6a16cd447d0779cce0ffa39bcdf724e4a01742f1476bd
)
md5sums=(
  2a266e875aebc75be940962277200993
  e74eabb99de90190907dd8d19b07a3ee
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}


