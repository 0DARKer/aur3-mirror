#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=mimeo
pkgver=2014
pkgrel=1
pkgdesc='Open files by MIME-type or file name using regular expressions.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/mimeo"
depends=(python2 python2-xdg file)
optdepends=('MIME-types: for recognizing more MIME-types')
source=(
  http://xyne.archlinux.ca/projects/mimeo/src/mimeo-2014.tar.xz
  http://xyne.archlinux.ca/projects/mimeo/src/mimeo-2014.tar.xz.sig
)
sha512sums=(
  ce940944402f26b53ec8b524e066f986bc4b8c79f879a8f3e7b29b09a9ec6ea9389c4162d13f0ec090c838bda2722d33de0ef048eae220fe44b3dc5cf61cacea
  e90c7571392256f97611f8fbad6cb59c2f89effad546e908db46a653e541eecd626bdc6adebc8e5b325190b06ec48ba1185ad9f8070c0e2cd46aa0251ffef0cc
)
md5sums=(
  28e2968571c11a5a66c8b16b932af91a
  13c885d35eeeda3f7439676493ac85b6
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}


