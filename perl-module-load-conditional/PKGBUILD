# CPAN Name  : Module-Load-Conditional
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
pkgname='perl-module-load-conditional'
pkgver='0.38'
pkgrel='1'
pkgdesc="Looking up module information / loading at runtime"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-module-corelist>=2.22')

url='http://search.cpan.org/dist/Module-Load-Conditional'

source=('http://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Module-Load-Conditional-0.38.tar.gz')
md5sums=('ddc4284f922b525a6c14769694498cf4')

build() {
  DIST_DIR="${srcdir}/Module-Load-Conditional-0.38"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

