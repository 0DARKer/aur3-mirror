pkgname=rubyroom
pkgver=0.4
pkgrel=2
pkgdesc='Ruby clone of the Whiteroom full-screen text editor'
arch=('x86_64' 'i686')
url="http://rubyroom.rubyforge.org/"
license=('GPL2')
depends=('ruby-gtk2')
optdepends=('fortune-mod: for poetic inspiration')
source=("http://www.roboticoverlords.org/rubyroom/$pkgname-$pkgver.tar.gz")
sha256sums=('edaf0d0697b9120589bdc475ff618781a2e0b6fe082ac7caef30658685952210')

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}

