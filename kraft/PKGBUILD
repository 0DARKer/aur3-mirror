pkgname=kraft
pkgver=0.54
pkgrel=1
pkgdesc="A program suitable for all trades or crafts"
arch=('i686' 'x86_64')
url="http://www.volle-kraft-voraus.de/"
license=('GPL')
depends=('kdepimlibs' 'ctemplate' 'python2-reportlab' 'python2-pypdf')
makedepends=('cmake' 'automoc4' 'boost')
source=("http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
        "ctemplate23.patch")

prepare() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np1 -i "${srcdir}"/ctemplate23.patch
  rm -rf build
  mkdir -p build
  cd build
  cmake ".." \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
}

build() {
  cd "${srcdir}/build"
  make
}

package() {
  cd "${srcdir}/build"
  make "DESTDIR=${pkgdir}" install
}

sha256sums=('719f9a91a9941345ec97fa6ba27a9fc4c2c7d9fefb20e73d6b0059a6c728b185'
            '1b62241c206a4c0ee08d37bdec05f0e3a03aaafc7d77993bccb29f838f1ed2a7')
