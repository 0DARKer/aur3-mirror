pkgname=kraft
pkgver=0.43
pkgrel=3
pkgdesc="A program suitable for all trades or crafts"
arch=('i686' 'x86_64')
url="http://kraft.sourceforge.net/index.php?lang=en"
license=('GPL')
depends=('kdepimlibs' 'ctemplate')
optdepends=('python-reportlab: generate PDFs')
makedepends=('cmake' 'automoc4' 'boost')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.bz2)

build() {
  cd ${srcdir}
  mkdir -p build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
  sed -i 's/python/python2/' ${srcdir}/${pkgname}-${pkgver}/tools/erml2pdf.py
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
sha1sums=('038316727a5cca0f9a6593a489cae4ba91ace73f')
