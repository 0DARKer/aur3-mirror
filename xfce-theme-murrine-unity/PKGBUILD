pkgname=xfce-theme-murrine-unity
pkgver=0.7
pkgrel=1
pkgdesc="A clean and simple Xfwm4 which matches the Murrine Unity GTK theme"
arch=('i686' 'x86_64')
url="http://xfce-look.org/content/show.php?content=137539"
license=('GPL')
depends=('gtk-xfce-engine')
optdepends=('gtk-theme-murrine-unity')
source=('http://xfce-look.org/CONTENT/content-files/137539-Murrine-Unity-XFCE-0.7.tar.gz')
md5sums=('e2a8399da95a48c2e548fc2e0cfd0abc')

build() {
    cd "${srcdir}"
    install -d -m755 "${pkgdir}/usr/share/themes"
    cp -rf Murrine* "${pkgdir}/usr/share/themes"
}


