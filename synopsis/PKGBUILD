# Contributor: Dmitriy Morozov <archlinux@foxcub.org> 
pkgname=synopsis
pkgver=0.10
pkgrel=1 
pkgdesc="Source-code introspection tool."
url="http://synopsis.fresco.org"
arch=('i686' 'x86_64')
license="GPL" 
depends=('python' 'boost' 'gc' 'bison')
source=(http://synopsis.fresco.org/download/$pkgname-$pkgver.tar.gz)
md5sums=(40db45ba82cf2f19cb81f00ddb7b19ad)

build() { 
 cd $startdir/src/$pkgname-$pkgver
 python setup.py config --prefix /usr/
 python setup.py build
 python setup.py install --root $startdir/pkg/
}
