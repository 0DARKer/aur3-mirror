# Maintainer: Joao Cordeiro <jlcordeiro at gmail dot com>

pkgname=starcal2
pkgver=1.9.1
pkgrel=1
pkgdesc="A calender for persian users"
arch=('any')
url="http://starcal.sourceforge.net"
license=('GPLv3')
depends=('python2>=2.5' 'pygtk>=2.8' 'pygobject' 'python2-numpy')
optdepends=('python-gnomeapplet' 'python2-gnomevfs' 'python2-qt')
source=(http://sourceforge.net/projects/starcal/files/starcal2/1.9/starcal2-1.9.1.zip
        'install.patch')
md5sums=('1c9d635c6b2b49b53bde2abacb887565'
         'bd0c15b05f2b52952a89dd8e9b719653')

build() {
  cd "$srcdir/$pkgname/"

  patch -p0 install < $srcdir/install.patch
  ./install $pkgdir --for-pkg --prefix=/usr/local/
}

# vim:set ts=2 sw=2 et:
