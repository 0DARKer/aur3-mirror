# Maintainer: wakeup <wakeup@erehwon.de>
pkgname=pygopherd
pkgver=2.0.16
pkgrel=2
pkgdesc="A modern Gopher server and HTTP gateway."
arch=(i686 x86_64)
url="http://gopher.quux.org:70/devel/gopher/pygopherd"
license=('GPL')
depends=(python)
makedepends=()
conflicts=()
replaces=()
backup=('etc/pygopherd/pygopherd.conf' 'etc/pygopherd/mime.types')
install=
source=(http://gopher.quux.org:70/devel/gopher/Downloads/$pkgname/${pkgname}_$pkgver.tar.gz)
md5sums=('6d52e316f842714974ccaf5cc1835ce3')


build() {
  mkdir -p $startdir/pkg/etc/rc.d
  cp $startdir/pygopherd $startdir/pkg/etc/rc.d/pygopherd
  chmod +x $startdir/pkg/etc/rc.d/pygopherd
  cd $startdir/src/$pkgname
  python setup.py install -O2 --prefix=/usr --root=$startdir/pkg || return 1
}
