# Maintainer: Bhushan Shah <bhush94 at gmail dot com>
pkgname=plasma-mediacenter-git
pkgver=1.3.0.beta.r0.g17a56ca
pkgrel=1
pkgdesc="A mediacenter user interface based on KDE Plasma components"
arch=('i686' 'x86_64')
url="http://community.kde.org/Plasma/Plasma_Media_Center/"
license=('GPL3')
groups=('kde')
depends=('kdebase-runtime' 'qtmobility')
makedepends=('git' 'cmake' 'automoc4' 'baloo')
provides=('plasma-mediacenter')
source=('git://anongit.kde.org/plasma-mediacenter')
md5sums=('SKIP')

_gitroot="git://anongit.kde.org/plasma-mediacenter"
_gitname="plasma-mediacenter"

pkgver() {
  cd $srcdir/$_gitname
  git describe --long | sed -r 's/^v//;s/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  #
  # BUILD HERE
  #
  cd $srcdir
  rm -rf build
  mkdir build 
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=false \
    $srcdir/$_gitname 
  echo $builddir
}

package() {
  cd "$srcdir/build"
  make DESTDIR="$pkgdir/" install
}
