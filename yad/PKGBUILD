# Contributor: Coolaman <coolaman@free.fr>

pkgname=yad
pkgver=0.8.0
pkgrel=1
pkgdesc="Display graphical dialogs from shell scripts or command line"
url="http://code.google.com/p/yad/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('bash' 'gtk2' 'gettext' 'intltool' )
source=(http://yad.googlecode.com/files/${pkgname}-${pkgver}.tar.xz)
md5sums=('71824a6eb4b3eb66e3b1d19745dd5a05')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
 make prefix=${startdir}/pkg/usr install || return 1
}
