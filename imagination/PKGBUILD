pkgname=imagination
pkgver=2.1
pkgrel=2
pkgdesc="Imagination is a lightweight and simple DVD slideshow maker in GTK+2"
arch=('i686' 'x86_64')
url="http://imagination.sourceforge.net/"
license=('GPL')
depends=('gtk2' 'ffmpeg' 'sox')
makedepends=('intltool' 'docbook-xsl')
provides=('imagination')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('3545642f9b23f23eb7a35d23bed5322d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's/PLUGINS_INSTALLED 0/PLUGINS_INSTALLED 1/g' src/support.c
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
 }
