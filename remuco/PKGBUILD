pkgname=remuco
pkgver=0.9.3
pkgrel=1
pkgdesc="A remote control system for Linux media players and mobile devices equipped with Bluetooth or WiFi"
arch=('i686' 'x86_64')
url="http://remuco.sourceforge.net/"
license=('GPL')
depends=('python' 'pygobject' 'pyxdg' 'dbus-python' 'python-pybluez' 'python-imaging')
source=(http://remuco.googlecode.com/files/$pkgname-$pkgver.tar.gz)
install=$pkgname.install
md5sums=('16a78c26f949fcb9630749fc1cf031fe')
optdepends=(
    'python-mpd: needed for the remuco-mpd adapter'
)

build() {
  cd $startdir/src/$pkgname-$pkgver

  # This is the list of adapters, which are going to be installed
  PLAYERS=amarok,audacious,banshee,fooplay,mpd,rhythmbox,totem,tvtime,vlc,xmms2
  
  export REMUCO_COMPONENTS=${PLAYERS},client
  python setup.py install --root=${pkgdir}
}
