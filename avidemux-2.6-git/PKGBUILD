#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=avidemux-2.6-git
pkgver=20111204
pkgrel=1
pkgdesc="A graphical tool to edit video(filter/re-encode/split).git version."
arch=(i686 x86_64)
url="http://www.avidemux.org/"
license=('GPL2')
depends=('libpulse' 'libdca' 'faac' 'lame' 'xvidcore' 'opencore-amr' 'libvpx' 'faad2' 'jack' 'aften' 'x264' 'mesa' 'libva')
makedepends=('cmake' 'git' 'bash')
provides=('avidemux2.6')

_gitroot=git://gitorious.org/avidemux-2-6/avidemux-2-6.git
_gitname=avidemux-2.6

#Enable CLI
CLI=1
# Enable GTK
GTK=0
# Enable QT
QT=1

if test "${CLI}" = 1; then
_CLI="--with-cli"
fi

if test "${GTK}" = 1; then
depends[${#depends[@]}]=gtk2
_GTK="--with-gtk"
fi

if test "${QT}" = 1; then
depends[${#depends[@]}]=qt
else
_QT="--without-qt4"
fi

build() {

cd "${srcdir}"
if [[ -d "${_gitname}" ]]; then
  cd "${_gitname}"
  git pull
else
  git clone "${_gitroot}" "${_gitname}" && cd "${_gitname}"
fi

/bin/bash bootStrap.bash ${_CLI} ${_GTK} ${_QT}
}

package() {
cp -R "${srcdir}"/${_gitname}/install/* "${pkgdir}"/
}
