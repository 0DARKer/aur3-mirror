#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=avidemux-2.6-git
pkgver=20120328
pkgrel=1
pkgdesc="A graphical tool to edit video(filter/re-encode/split).git version."
arch=('i686' 'x86_64')
url="http://www.avidemux.org/"
license=('GPL2')
depends=('libpulse' 'libdca' 'faac' 'lame' 'xvidcore' 'opencore-amr' 'libvpx' 'faad2' 'jack' 'aften' 'x264' 'mesa' 'libva' 'dcaenc')
makedepends=('cmake' 'git' 'yasm')
provides=('avidemux2.6')
options=('!makeflags')

_gitroot=git://gitorious.org/avidemux-2-6/avidemux-2-6.git
_gitname=avidemux-2-6

#Enable CLI
_CLI=1
# Enable GTK
_GTK=0
# Enable QT
_QT=1

if [ "${_CLI}" == "1" ]; then
  _CLI="--with-cli"
else
  _CLI="--without-cli"
fi
if [ "${_GTK}" == "1" ]; then
  depends+=('gtk2')
  _GTK="--with-gtk"
else
  _GTK="--without-gtk"
fi
if [ "${_QT}" == "1" ]; then
  depends+=('qt')
  _QT="--with-qt4"
else
  _QT="--without-qt4"
fi

build() {
  cd "${srcdir}"

  msg "Connecting to GIT server..."

  if [ -d "${srcdir}"/"${_gitname}" ] ; then
    cd "${_gitname}" && git pull
  else
    git clone "${_gitroot}"
  fi

  [ -d "${srcdir}"/"${_gitname}"-build ] && rm -fr "${srcdir}"/"${_gitname}"-build
  cp -R "${srcdir}"/"${_gitname}" "${srcdir}"/"${_gitname}"-build

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "${srcdir}"/"${_gitname}"-build

  bash bootStrap.bash ${_CLI} ${_GTK} ${_QT}
}

package() {
cp -R "${srcdir}"/${_gitname}-build/install/* "${pkgdir}"/
}
