# Contributor: Bartosz Chmura <chmurli at gmail dot com>

pkgname=ttf-chromeos-fonts
_pkgname=croscorefonts-0.0.3
pkgver=0.0.3
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="Chrome OS true type fonts: Arimo, Tinos and Cousine"
arch=('any')
license=('custom')
source=(http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/croscorefonts-0.0.3.tar.gz)
url="http://code.google.com/p/chromium-os/issues/detail?id=5287"
install=$pkgname.install
md5sums=('03c092e425067fbdccbefb46c56393fa')

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/*.ttf $pkgdir/usr/share/fonts/TTF
}

