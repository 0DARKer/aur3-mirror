# Maintainer: Christer Edwards <christer.edwards@gmail.com>

pkgname=salt-api
pkgver=0.8.1
pkgrel=1
pkgdesc="Salt API is used to expose the fundamental aspects of Salt control to external sources."
arch=(any)
url="https://github.com/saltstack/salt-api"
license=("APACHE")
depends=('python2'
	 'salt')

backup=()

makedepends=()
optdepends=()
options=()
conflicts=()

source=("http://pypi.python.org/packages/source/s/${pkgname}/${pkgname}-${pkgver}.tar.gz")

md5sums=('151e92d186c8026cc17122733e296daf')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py install --root=${pkgdir}/ --optimize=1

  cd ${pkgdir}
  chmod a+r usr/share/man/man1/salt-api.1
  chmod a+r usr/share/man/man7/salt-api.7

}
