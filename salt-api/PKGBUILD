# Maintainer: Christer Edwards <christer.edwards@gmail.com>

pkgname=salt-api
pkgver=0.7.0
pkgrel=1
pkgdesc="Salt API is used to expose the fundamental aspects of Salt control to external sources."
arch=(any)
url="https://github.com/saltstack/salt-api"
license=("APACHE")
depends=('python2'
	 'salt')

backup=()

makedepends=()
optdepends=()
options=()
conflicts=()

source=("https://github.com/downloads/saltstack/salt-api/${pkgname}-${pkgver}.tar.gz"
	"setup.py.patch")

md5sums=('c2378ff6e5d6de8a734f50461854798c'
	 '1026a5d6ff5165ad2442ea4cb1d789a5')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  patch < ../setup.py.patch

  python2 setup.py install --root=${pkgdir}/ --optimize=1

}
