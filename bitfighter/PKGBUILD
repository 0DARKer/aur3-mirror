
# Maintainer : archtux <antonio.arias99999 at gmail.com>
 
pkgname=bitfighter
pkgver=015a
pkgrel=2
pkgdesc="A free multi-player 2-D space combat game with Robotron-like controls."
arch=('i686' 'x86_64')
url="http://bitfighter.org/"
license=('GPL2')
depends=('freealut' 'freeglut' 'openal')
makedepends=('lua')
source=(http://bitfighter.googlecode.com/files/$pkgname-$pkgver.tar.gz
        bitfighter.sh
        bitfighter.png
        bitfighter.desktop)
md5sums=('b132aab82e7b9dd59e9d3b48b430227a'
         '4c48351e246a5415df61c5ecb719f78a'
         '8b28490af9deadd0a1a104ae372f5b08'
         'e498568cdb2d92dff616cd095c1435a5')
 
 
build() {
        mkdir -p $pkgdir/opt/bitfighter
        install -Dm755 bitfighter.sh $pkgdir/usr/bin/bitfighter.sh
 
        # Desktop icon
        install -Dm644 bitfighter.png $pkgdir/usr/share/pixmaps/bitfighter.png
        install -Dm644 bitfighter.desktop $pkgdir/usr/share/applications/bitfighter.desktop
 
        cd $srcdir/$pkgname-$pkgver
        make LUALIB=/usr/lib/liblua.a
        cd $srcdir/$pkgname-$pkgver/installer
        cp -R levels/ sfx/ $srcdir/$pkgname-$pkgver/exe
        cd ../exe
        cp -R levels/ robots/ scripts/ sfx/ bitfighter $pkgdir/opt/bitfighter
 
        # Write permissions
        chmod 4511 -R $pkgdir/opt/bitfighter

        # License 
        install -Dm644 $srcdir/$pkgname-$pkgver/LICENSE.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}