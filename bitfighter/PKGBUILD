# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=bitfighter
pkgver=014a
pkgrel=1
pkgdesc="Bitfighter is a free multi-player 2-D space combat game with Robotron-like controls."
arch=('i686' 'x86_64')
url="http://bitfighter.org/"
license=('GPL')
depends=('freealut' 'freeglut' 'openal')
makedepends=('lua' 'subversion')

build() {
svn co http://bitfighter.googlecode.com/svn/tags/$pkgname-$pkgver
cd $srcdir/$pkgname-$pkgver
make LUALIB=/usr/lib/liblua.a
cd $srcdir/$pkgname-$pkgver/installer
cp -R sfx/ screenshots/ levels/ $srcdir/$pkgname-$pkgver/exe
mkdir -p $pkgdir/opt/bitfighter
cd $srcdir/$pkgname-$pkgver/exe
cp -R ./* $pkgdir/opt/bitfighter
cd $startdir
install -Dm755 bitfighter.sh $pkgdir/usr/bin/bitfighter.sh

# Desktop icon
install -Dm644 bitfighter.png $pkgdir/usr/share/pixmaps/bitfighter.png
install -Dm644 bitfighter.desktop $pkgdir/usr/share/applications/bitfighter.desktop
}