# Contributor: lobotomius at gmail dot com

pkgname=exomizer
pkgver=2.0beta7
pkgrel=1
pkgdesc="compressor for 8bit platforms software"
# optimistic
arch=('any')
url="http://hem.bredband.net/magli143/exo/"
license=('custom')
makedepends=('bison flex')
source=('http://hem.bredband.net/magli143/exo/exo20beta7.zip')
md5sums=('a92e7502969c75710d64e45e66d81bf9')

build() {
    cd ${srcdir}/src
    
    rm -f asm.tab.c lex.yy.c
    make || return 1
    mkdir -p ${pkgdir}/usr/bin
    cp exomizer exoraw exobasic ${pkgdir}/usr/bin
}
