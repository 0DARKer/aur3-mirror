pkgname=openastro-dev
pkgver=1.1.24
pkgrel=2
pkgdesc='OpenAstro is an open source fully featured astrology software.'
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.openastro.org/"
depends=('gnome-python-desktop' 'imagemagick' 'librsvg' 'python-dateutil' 'pycairo' 'pyswisseph' 'pygtk' 'setuptools' 'swisseph-fixstars' 'swisseph_18')
makedepends=('setuptools' 'wget')
optdepends=()
source=("http://gnu.labstag.free.fr/arch/openastro-dev.tar.gz")
md5sums=('5519f22bef79950170e7c2bc7789a6f2')

build() {
    cd $srcdir/openastro-dev
    python2 setup.py install --root=$pkgdir || return 1
}
