# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-traits-qt-svn
pkgver=26173
pkgrel=1
pkgdesc="PyQt backend for Traits and TraitsGUI (Pyface)."
arch=('any')
url="http://code.enthought.com/projects/traits_gui"
license=('BSD')
depends=('python2' 'python2-qt>=4' 'python-ets-traits-svn' 
         'python-ets-enthoughtbase-svn')
makedepends=('subversion' 'python2-distribute')
conflicts=('python-enthought-traits')
provides=('python-ets-traits-backend-svn')
options=(!emptydirs)

_svnmod=TraitsBackendQt
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

