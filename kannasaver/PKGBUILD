pkgname=kannasaver
pkgver=1.1
pkgrel=0
pkgdesc="Kde 3.x screensaver showing hiragana or katakana signs with pronouciations"
url="http://www.kde-look.org/content/show.php?content=16792"
depends=('xorg' 'kdebase' 'mikachanfont')
#install=kannasaver.install
source=(http://www.eregion.de/$pkgname-$pkgver.tar.bz2)
md5sums=(b8ecd1a3176aa52aa8ba49ba836ab1bc)

build() {
	
	cd $startdir/src/$pkgname/
	./configure
	make || return 1
	make DESTDIR=$startdir/pkg install

}
