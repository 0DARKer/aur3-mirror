# Contributor: Javier ‘Phrodo_00’ Aravena <Phrodo.00@gmail.com>
pkgname=ttyrec
pkgver=1.0.8
pkgrel=2
pkgdesc="Ttty recorder."
arch=('i686')
url="http://0xcc.net/ttyrec/index.html.en"
license=('GPL')
depends=()
source=("http://0xcc.net/ttyrec/$pkgname-$pkgver.tar.gz")
md5sums=('ee74158c6c55ae16327595c70369ef83')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make CFLAGS='-DHAVE_getpt -DSVR4' || return 1
  install -d $startdir/pkg/usr/bin
  install -m755 ttyplay ttyrec ttytime $startdir/pkg/usr/bin
}
