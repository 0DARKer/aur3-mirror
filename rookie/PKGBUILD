
# Maintainer: Frikilinux <frikilinux at frikilinux.com.ar>

pkgname=rookie
pkgver=0.2.5
pkgrel=1
pkgdesc="A simple, lightweight, yet featureful download manager for GNOME desktop"
url="http://gtk-apps.org/content/show.php/Rookie+Download+Manager?content=135883"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('gtk3' 'dconf' 'libsoup' )
makedepends=('intltool')
conflicts=()
options=('!libtool')
source=("http://launchpad.net/rookie/trunk/0.2.5/+download/${pkgname}_${pkgver}.tar.gz")
install=('rookie.install')
sha256sums=('b6ca6bb9635f512c7f58947f28d31df7bd9aa78ecaa00af3290caf64cfb4c563')

build() {
	cd "${srcdir}/${pkgname} (copy)"
        ./autogen.sh --disable-schemas-compile --prefix=/usr
	make
}
package() {
	cd "${srcdir}/${pkgname} (copy)"
        make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install
}
