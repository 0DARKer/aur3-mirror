# Contributor: Matthias Maennich <arch@maennich.net>
pkgname=bzr-xmloutput-dev
pkgver=110
pkgrel=1
pkgdesc="A Bazaar plugin that provides a option to generate XML output for builtins commands (Development version)"
arch=('i686' 'x86_64')
url="https://launchpad.net/bzr-xmloutput"
license=('GPL')
depends=('bzr')
conflicts=('bzr-xmloutput')
replaces=('bzr-xmloutput')
provides=('bzr-xmloutput')
makedepends=('python')
source=()
md5sums=()
sha1sums=()

_bzrmod=bzr-xmloutput
_bzrbranch=lp:bzr-xmloutput

build() {

	cd $startdir/src

	msg "Connecting to the server...."

	if [ ! -d ./$_bzrmod ]; then
		bzr branch $_bzrbranch $_bzrmod
	else
	        bzr pull $_bzrmod
	fi

	msg "BZR checkout done or server timeout"
	msg "Starting make..."

	mkdir -p $startdir/pkg/usr
	cd $startdir/src/$_bzrmod
	python setup.py install --prefix=$startdir/pkg/usr
}

