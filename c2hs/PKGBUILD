# custom variables
_hkgname=c2hs
_licensefile=COPYING

# PKGBUILD options/directives
pkgname=c2hs
pkgver=0.16.3
pkgrel=20
pkgdesc="C->Haskell FFI tool that gives some cross-language type safety"
url="http://www.cse.unsw.edu.au/~chak/haskell/c2hs/"
license=("GPL-2")
arch=('i686' 'x86_64')
makedepends=("ghc=7.0.3-2"
             "haskell-array=0.3.0.2"
             "haskell-containers=0.4.0.0"
             "haskell-directory=1.1.0.0"
             "haskell-filepath=1.2.0.0"
             "haskell-language-c=0.3.2.1"
             "haskell-pretty=1.0.1.2"
             "haskell-process=1.0.1.5")
depends=()
options=('strip')
source=("http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz")

sha256sums=("a562be4f9c2d2a2c55bc61233f86e129aff1ec6ac588b9eb904e17379beb1ae3")

# PKGBUILD functions
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure -O --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
}

package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
