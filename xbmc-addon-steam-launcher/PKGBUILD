# Maintainer: Thermionix <thermionix@gmail>
pkgname='xbmc-addon-steam-launcher'
pkgver=20131127
pkgrel=1
pkgdesc='XBMC addon to launch Steam from within XBMC.'
arch=('any')
url='https://github.com/teeedubb/xbmc-steam-launcher'
license=('MIT')
depends=('xbmc' 'steam')
makedepends=('git')

_gitroot='git://github.com/teeedubb/xbmc-steam-launcher.git'
_gitname='script.steam.launcher'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'

  if [ -d "${_gitname}" ] ; then
    cd "${_gitname}" && git pull origin
    msg 'The local files are updated.'
  else
    git clone "${_gitroot}" "${_gitname}"
  fi

  msg 'GIT checkout done or server timeout'
}

package() {
  mkdir -p "${pkgdir}/usr/share/xbmc/addons/${_gitname}/"
  for target in `ls ${srcdir}/$_gitname`; do
    cp -r ${srcdir}/${_gitname}/$target ${pkgdir}/usr/share/xbmc/addons/${_gitname}/.
  done
  find "${pkgdir}/usr/share/xbmc/addons/${_gitname}/" -type f -exec chmod 644 {} \;
  chmod +x "${pkgdir}/usr/share/xbmc/addons/script.steam.launcher/resources/steam-launch.sh"
}

