# Maintainer: Thermionix <thermionix@gmail>
pkgname='xbmc-addon-steam-launcher'
pkgver=20131130
pkgrel=1
pkgdesc='XBMC addon to launch Steam from within XBMC.'
arch=('any')
url='https://github.com/Thermionix/xbmc-steam-launcher'
license=('MIT')
depends=('xbmc' 'steam' 'steam-standalone')
makedepends=('git')
source=(steam-launcher.sudoers)
sha256sums=('9bcda0b8c77dd1e513a48178be040ca2c56c54a2e2d227c36b29c40fa93a24fd')

_gitroot='https://github.com/Thermionix/xbmc-steam-launcher.git'
_gitname='script.steam.launcher'

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'

  if [ -d "${_gitname}" ] ; then
    cd "${_gitname}" && git pull origin
    msg 'The local files are updated.'
  else
    git clone "${_gitroot}" "${_gitname}"
  fi

  msg 'GIT checkout done or server timeout'
}

package() {
  mkdir -p "${pkgdir}/usr/share/xbmc/addons/${_gitname}/"
  mkdir -p "${pkgdir}/etc/sudoers.d/"

  for target in `ls ${srcdir}/$_gitname`; do
    cp -r ${srcdir}/${_gitname}/$target ${pkgdir}/usr/share/xbmc/addons/${_gitname}/.
  done

  cp $srcdir/steam-launcher.sudoers $pkgdir/etc/sudoers.d/30-steam-launcher
}

