# Contributor: Mladen Pejakovic <pejakm@gmail.com>

pkgname=qx11grab
pkgver=0.3.1
pkgdesc="Qt4 applet for recording x11 windows with ffmpeg"
pkgrel=1
arch=(i686 x86_64)
_kdeapps=89204
url="http://kde-apps.org/content/show.php?content=${_kdeapps}"
license=(GPL)
makedepends=('cmake')
depends=('qt' 'ffmpeg>=20111211' 'alsa-lib' 'oxygen-icons')
options=()
source=(http://gitweb.hjcms.de/cgi-bin/index.cgi/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.gz)
md5sums=('53f172d29a508f4dc9f02a316c9a8072')

build(){
  cd ${srcdir}/${pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package(){
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
