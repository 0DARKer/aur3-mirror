pkgname=qx11grab
pkgver=0.4.5
pkgdesc="Qt4 applet for recording x11 windows with ffmpeg"
pkgrel=1
arch=(i686 x86_64)
url="http://qx11grab.hjcms.de/"
license=(GPL)
makedepends=('cmake')
depends=('qt' 'ffmpeg>=1.0' 'dbus' 'alsa-lib' 'oxygen-icons')
options=()
source=(http://qx11grab.hjcms.de/downloads/${pkgver}/${pkgname}-${pkgver}.tar.xz)
md5sums=('dfe015126cb50142dcfa1fa974042b54')

build(){
  cd ${srcdir}/${pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package(){
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
