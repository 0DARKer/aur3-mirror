pkgname=libdbusmenu-qt-bzr
pkgver=239
pkgrel=1
pkgdesc="A library that provides a Qt implementation of the DBusMenu spec"
arch=('i686' 'x86_64')
url="https://launchpad.net/libdbusmenu-qt"
license=('GPL')
depends=('qt5-base')
makedepends=('cmake' 'bzr' 'doxygen' 'extra-cmake-modules-git')
conflicts=('libdbusmenu-qt')
provides=('libdbusmenu-qt')
groups=('kde-git')

_bzrtrunk=lp:libdbusmenu-qt
_bzrmod=libdbusmenu-qt

build() {
  cd "$srcdir"
  
  if [ -d ${_bzrmod} ]; then
    bzr up ${_bzrmod}
    msg "The local files are updated."
  else
    bzr branch ${_bzrtrunk} ${_bzrmod}
  fi
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build 
  fi
  mkdir $srcdir/build
  cd $srcdir/build
  cmake $srcdir/$_bzrmod -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() { 
  cd ${srcdir}/build
  make DESTDIR="${pkgdir}" install
}
