# Contributor: helios <helios@cyb0rg.org>
pkgname=chironfs
pkgver=1.0.0
pkgrel=2
pkgdesc="A FUSE filesystem replicates filesystem"
arch=("i686", "x86_64")
url="http://www.furquim.org/chironfs/"
license=('GPL')
source=(http://chironfs.googlecode.com/files/chironfs-1.0.0.tar.gz)
md5sums=('ce3e8944b3a61c0a6227c12e234dcaa4')

build() {
  cd "$startdir/src/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg PREFIX=$startdir/pkg install
}

# vim:set ts=2 sw=2 et:
