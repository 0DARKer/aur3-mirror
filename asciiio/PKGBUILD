# Maintainer: Daniel Leining <daniel@the-beach.co>
pkgname=asciiio
pkgver=git.d3a2ac6
pkgrel=1
pkgdesc="A simple terminal recorder"
arch=(any)
url="http://ascii.io"
license=('GPL')
depends=('python2')
source=('git://github.com/sickill/ascii.io-cli.git')
md5sums=('SKIP')
pkgver(){
	cd "$srcdir/ascii.io-cli"
	echo "git.$(git describe --tags --always)"
}
package() {
	cd "$srcdir/ascii.io-cli/bin"
	sed '1 s/python/python2/' -i asciiio
	install -D -m755 asciiio $pkgdir/usr/bin/asciiio
}

