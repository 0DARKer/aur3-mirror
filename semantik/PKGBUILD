# Maintainer: der_FeniX <derfenix@gmail.com>

pkgname=semantik
pkgver=0.9.1
pkgrel=1
arch=('i686' 'x86_64')
url="https://copperlark.com/"
makedepends=('kdebase-lib' 'python2' 'ocaml' 'kdelibs' 'waf')
license=('GPL')
source=("http://semantik.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2")

sha256sums=('173c215f885dbec1a40774ff9c1d9f92b817526f0fb30dbfbd58d49fd3093731')

pkgdesc="A mindmapping-like tool for document generation (reports, thesis, etc)"
depends=('kdebase-lib' 'python>=2.3')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i 's/0755/755/g' wscript
  PYTHON=python2 PYTHON_VERSION=2.7 waf configure build
}


package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  PYTHON=python2 PYTHON_VERSION=2.7 waf install --destdir="${pkgdir}" 
}
