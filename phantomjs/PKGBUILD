# Contributor: Vladimir Chizhov <jagoterr@gmail.com>

pkgname=phantomjs
pkgver=1.1.0
pkgrel=2
pkgdesc="Headless WebKit with JavaScript API"
url="http://www.phantomjs.org/"
license="BSD"
arch=('i686' 'x86_64')
depends=('qt>=4.7.0')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://phantomjs.googlecode.com/files/${pkgname}-${pkgver}-source.tar.gz")
md5sums=('e08fcc91545224f780cd6ffb3ab21545')

build() {
  cd $srcdir
  qmake && make || return 1
  mkdir -p $pkgdir/usr/bin/
  install -D -m755 bin/phantomjs $pkgdir/usr/bin/
}

