# Maintainer: Vladimir Chizhov <jagoterr@gmail.com>

pkgname=phantomjs
pkgver=1.4.1
pkgrel=1
pkgdesc="Headless WebKit with JavaScript API"
url="http://www.phantomjs.org/"
license=("BSD")
arch=('i686' 'x86_64')
depends=('qt>=4.7.0' 'qtwebkit')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://phantomjs.googlecode.com/files/${pkgname}-${pkgver}-source.zip")
md5sums=('2a20f46ae627451106f66bcbd70a9ae0')

build() {
  cd $srcdir/$pkgname-$pkgver
  qmake && make || return 1
}

package() {
  mkdir -p $pkgdir/usr/bin/
  install -D -m755 $srcdir/$pkgname-$pkgver/bin/phantomjs $pkgdir/usr/bin/
}

