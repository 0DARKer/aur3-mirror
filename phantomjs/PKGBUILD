# Maintainer: Vladimir Chizhov <jagoterr@gmail.com>

pkgname=phantomjs
pkgver=1.2.0
pkgrel=1
pkgdesc="Headless WebKit with JavaScript API"
url="http://www.phantomjs.org/"
license=("BSD")
arch=('i686' 'x86_64')
depends=('qt>=4.7.0')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://phantomjs.googlecode.com/files/${pkgname}-${pkgver}-source.zip")

build() {
  cd $srcdir/$pkgname-$pkgver
  qmake && make || return 1
  mkdir -p $pkgdir/usr/bin/
  install -D -m755 bin/phantomjs $pkgdir/usr/bin/
}

md5sums=('e9c3a9969c271db3bba355bdf79f6f80')
