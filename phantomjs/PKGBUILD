# Contributor: Vladimir Chizhov <jagoterr@gmail.com>

pkgname=phantomjs
pkgver=1.0.0
pkgrel=1
pkgdesc="Headless WebKit with JavaScript API"
url="http://www.phantomjs.org/"
license="BSD"
arch=('i686' 'x86_64')
depends=('qt>=4.7.0')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://phantomjs.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
md5sums=('6aa18de82e24923fa1a1feeaf299ecef')

build() {
  cd $startdir/src/$pkgname-$pkgver
  qmake && make || return 1
  mkdir -p $startdir/pkg/usr/bin/
  install -D -m755 bin/phantomjs $startdir/pkg/usr/bin/
}

