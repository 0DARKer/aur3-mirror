# Maintainer: Vladimir Chizhov <jagoterr@gmail.com>

pkgname=phantomjs
pkgver=1.3.0
pkgrel=1
pkgdesc="Headless WebKit with JavaScript API"
url="http://www.phantomjs.org/"
license=("BSD")
arch=('i686' 'x86_64')
depends=('qt>=4.7.0')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://phantomjs.googlecode.com/files/${pkgname}-${pkgver}-source.zip")
md5sums=('fbfb6bf36f935f5339b9dec3a382d7b7')

build() {
  cd $srcdir/$pkgname-$pkgver
  qmake && make || return 1
  mkdir -p $pkgdir/usr/bin/
  install -D -m755 bin/phantomjs $pkgdir/usr/bin/
}

