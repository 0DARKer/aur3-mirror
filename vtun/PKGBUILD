pkgname=vtun
pkgver=3.0.2
pkgrel=5
pkgdesc="Create virtual tunnels over TCP/IP networks with traffic shaping"
arch=('i686' 'x86_64')
url="http://vtun.sourceforge.net/"
license=('GPL')
depends=('openssl' 'zlib')
makedepends=('bison' 'flex' 'm4')
backup=('etc/vtun/vtund.conf')
source=(http://ftp.de.debian.org/debian/pool/main/v/vtun/vtun_3.0.2.orig.tar.gz http://ftp.de.debian.org/debian/pool/main/v/vtun/vtun_3.0.2-4.diff.gz)
md5sums=('d3d8bc4d58886498a1c338670eab9315' 'b05694d5f9dae9bc132e7df048bff6cd')

build() {
  cd $srcdir/$pkgname-$pkgver

  patch -Np1 -i ../vtun_3.0.2-4.diff || return 1

  for i in `ls debian/patches/*.patch`; do
    patch -Np1 -i $i || return 1
  done

  ./configure --prefix=/usr --disable-lzo --sysconfdir=/etc/vtun \
    --localstatedir=/var --mandir=/usr/share/man
  /usr/bin/make || return 1
  /usr/bin/make DESTDIR=$pkgdir STAT_DIR=/var/log install
  chmod 1777 $pkgdir/var/lock
}
# vim: ts=2 sw=2 et ft=sh
