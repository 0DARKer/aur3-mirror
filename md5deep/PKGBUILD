pkgname=md5deep
pkgver=3.9.1
pkgrel=1
arch=('i686' 'x86_64')

pkgdesc="Advanced checksum hashing tool"
url="http://md5deep.sourceforge.net"

license=('Public Domain')

# This tool was originally developed by Jesse Kornblum <research (a t) jessekornblum ,,dot. com> when 
# he was serving as a Special Agent with the United States Air Force Office of Special Investigations (AFOSI).
# As such, it exists in the public domain under 17 USC 105.

depends=('glibc')

source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")

md5sums=('071f78224e761b36d7cb4f1b880b4fc2')
sha256sums=('95547dded54ecca057b1e6fa2d253f821ac427bb209c06bafc8eed3193ea54bd')
sha512sums=('f652c464917f471b0e12cd4a41a856994764d2b0cd5de05282a71a9619eeb723f690f08f37dc13269b1dde22ff5171f78f3e0bffda7e40e4f8e18b634ecfb41f')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
