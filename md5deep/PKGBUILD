pkgname=md5deep
pkgver=3.7
pkgrel=1
arch=('i686' 'x86_64')

pkgdesc="Advanced checksum hashing tool"
url="http://md5deep.sourceforge.net"

license=('Public Domain')

# This tool was originally developed by Jesse Kornblum <research (a t) jessekornblum ,,dot. com> when 
# he was a Special Agent with the United States Air Force Office of Special Investigations (AFOSI), 
# which puts it into the "public domain" under 17 USC 105.

depends=('glibc')

source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")

md5sums=('d103b738721c54a9bf535470b63d49dc')
sha256sums=('23e70b51dd118639d04ad6ed61579e0667a8df78e742f73eaaa6b820a4714b25')
sha512sums=('dc619afa3d72d5cf573c71f73c676d6a45d5c168861962012e46066305c94900ad25ca0176196bb8dfdb343db1e03163ad0d208f03e03e2f8945d4a7e30be978')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

