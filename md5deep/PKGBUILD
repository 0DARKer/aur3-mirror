# As such, md5deep exists in the public domain under 17 USC 105.

depends=('glibc')

source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")

md5sums=('72a4dd0a16f27b6da54d599a8c179fea')
sha256sums=('bcc902b50cb21a4a2a7a3aa2592c5cff8c8e4585bb607b9cafed3b6c2cd5a5d1')
sha512sums=('573c4c886370728efb6a2d19339190469bdc087fe8144282955f03e888b57c1d2dd1315740c941287930163b906e1e7680e5197c2b214e7b696cf3a81757fef4')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
