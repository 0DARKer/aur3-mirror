# Maintainer: AJ <aj[at]nqrith[dot]com>
pkgname="mtree"
pkgver=1.0.1
pkgrel=2
pkgdesc="Map a directory hierarchy"
url="http://code.google.com/p/mtree-port/"
arch=('x86_64' 'i686')
license=('BSD')
depends=('openssl')
makedepends=()
source=("http://mtree-port.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
md5sums=('4acc8ed4ccf1e86c3ad4157473a638bf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.8 $pkgdir/usr/share/man/man8/$pkgname.8
}

# vim:set ts=2 sw=2 et:
