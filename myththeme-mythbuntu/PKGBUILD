# Maintainer: Louis Tim Larsen <louis(a)louis.dk>

pkgname=myththeme-mythbuntu
pkgver=26.21
pkgrel=1
pkgdesc="Mythbuntu theme for MythTV"
arch=('any')
url="https://github.com/MythTV-Themes/Mythbuntu"
license=('GPL2')
depends=('mythtv>=0.27' 'mythtv<0.28' 'ttf-dejavu')
source=("$pkgname::git://github.com/MythTV-Themes/Mythbuntu.git#branch=fixes/0.27")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname"
	grep -oP '(?<=<major>).*?(?=</major>)' themeinfo.xml|tr '\n' '.'
	grep -oP '(?<=<minor>).*?(?=</minor>)' themeinfo.xml
}

package() {
	cd "$srcdir"
	mkdir -p "$pkgdir/usr/share/mythtv/themes/"
	cp -r $pkgname "$pkgdir/usr/share/mythtv/themes/Mythbuntu"
}
