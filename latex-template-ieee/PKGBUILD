pkgname=latex-template-ieee
pkgver=1.7a
pkgrel=2
pkgdesc="the official LaTeX template for IEEE authors"
arch=('any')
url="http://www.ieee.org/web/publications/authors/transjnl/index.html"
license=('LPPL')
groups=()
depends=('texlive-bin')
makedepends=('tar' 'gzip')
optdepends=('xpdf: for viewing the manual')
backup=()
options=()
install=texlive.install
source=(http://www.ieee.org/documents/IEEEtran.tar.gz)
md5sums=('dee293e81a8e8e6030aa74b6c9dba0bf')

build() {
  mkdir -p ${pkgdir}/usr/share/texmf/tex/latex/
  cd ${pkgdir}/usr/share/texmf/tex/latex/
  tar xzf ${srcdir}/IEEEtran.tar.gz 
  chown -R root.root *
  chmod 644 oldtran/*
}

