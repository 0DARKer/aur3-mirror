# Maintainer: Serge Ziryukin <ftrvxmtrx@gmail.com>

pkgname=ocaml-extunix
pkgver=0.0.3
pkgrel=1
pkgdesc="Thin bindings to various low-level system APIs which are not covered by Unix module"
arch=('i686' 'x86_64')
url=("http://extunix.forge.ocamlcore.org")
# LGPL + linking exception
license=('LGPL')
depends=('ocaml' 'ocaml-findlib')
makedepends=('ocaml' 'ocaml-ounit')
source=(https://forge.ocamlcore.org/frs/download.php/646/ocaml-extunix-${pkgver}.tar.gz)
md5sums=('82c72d2201301788347763509682d023')

build () {
  OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"

  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --destdir "${OCAMLFIND_DESTDIR}" || return 1
  make || return 1
}

package () {
  OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"

  cd "${srcdir}/${pkgname}-${pkgver}"

  mkdir -p "${OCAMLFIND_DESTDIR}/stublibs"
  OCAMLFIND_DESTDIR="${OCAMLFIND_DESTDIR}" make install || return 1
}
