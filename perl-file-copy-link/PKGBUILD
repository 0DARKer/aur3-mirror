pkgname='perl-file-copy-link'
pkgver='0.112'
pkgrel='1'
pkgdesc="To replace a link by a copy of the link."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/File-Copy-Link'
source=('http://search.cpan.org/CPAN/authors/id/R/RM/RMBARKER/File-Copy-Link-0.112.tar.gz')
md5sums=('3fcbaf38c41750b68c3432048647b8ba')

build() {
  DIST_DIR="${srcdir}/File-Copy-Link-0.112"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
