# Contributor: Jed Brown <jed@59A2.org>
pkgname=padb
pkgver=3.0
pkgrel=1
pkgdesc="Parallel Application Debugger"
url="http://padb.pittman.org.uk"
license=('LGPL')
depends=('perl')
arch=('i686' 'x86_64')
source=(http://${pkgname}.googlecode.com/files/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver} || return 1
  make || return 1
  make INSTALL_DIR=$pkgdir/usr install || return 1
}
md5sums=('573ae13b2e258b1e5d5634dd6ca45d3a')
