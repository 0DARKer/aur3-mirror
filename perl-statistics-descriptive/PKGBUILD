# Maintainer: Jason St. John <jstjohn .. purdue . edu>

pkgname=perl-statistics-descriptive
_pkgname=Statistics-Descriptive
pkgver=3.0602
pkgrel=1
pkgdesc="Statistics::Descriptive - Module of basic descriptive statistical functions."
arch=('any')
url="http://search.cpan.org/dist/$_pkgname"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
makedepends=('perl-test-pod-coverage')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/$_pkgname-$pkgver.tar.gz)
sha512sums=('6e8c70e74da83f87cb308f0e49abceb40c22d0f7c1ba98416db656005cbc59af27761fe67b075c614eb0466275f652f8caad7f914e41d8f473f22627bbc596a8')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  
  perl Build.PL installdirs=vendor destdir="$pkgdir/"
  perl Build
}

check() {
  cd "$srcdir/$_pkgname-$pkgver"
  
  perl Build test
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  perl Build install
}

