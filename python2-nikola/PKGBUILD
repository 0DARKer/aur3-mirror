# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python2-nikola
_pyname=nikola
pkgver=5.5
pkgrel=1
pkgdesc='A static website and blog generator.'
arch=('any')
url='http://nikola.ralsina.com.ar/'
license=('custom')
depends=('python2' 'python2-doit' 'python2-pygments' 'python2-docutils'
         'python2-pillow' 'python2-mako' 'python2-unidecode' 'python2-lxml'
         'python2-yapsy' 'python2-mock>=1.0.0' 'python2-requests' 'python2-markdown'
         'python2-jinja' 'python2-pyrss2gen' 'python2-pytz')
options=(!emptydirs)
source=("https://github.com/ralsina/nikola/archive/5.5.tar.gz")
md5sums=('a8eeda6e59785d7e6a288a7b02a8589c')

package() {
  cd "${srcdir}/${_pyname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

