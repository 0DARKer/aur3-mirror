# Contributor: MCMic <come.bernigaud@laposte.net>

pkgname=meandmyshadow
pkgver=0.2
pkgrel=3
pkgdesc="Me and My Shadow is a puzzle/platform game. It has an interesting concept and rather unique gameplay."
arch=('i686' 'x86_64')
url="http://meandmyshadow.sourceforge.net/"
license=('GPL')
depends=('sdl' 'sdl_gfx' 'curl' 'libarchive' 'sdl_ttf' 'sdl_mixer')
makedepends=('make' 'cmake')
conflicts=()
source=('http://sourceforge.net/projects/meandmyshadow/files/${pkgver}/meandmyshadow-${pkgver}-src.tar.gz/download')
md5sums=('3736880e6c52135f1ac2fd56e6df566a')

build() {
	cd $srcdir/$pkgname-$pkgver

	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make install DESTDIR=$pkgdir
}
