# Contributor: MCMic <come.bernigaud@laposte.net>

pkgname=meandmyshadow
pkgver=0.3
pkgrel=2
pkgdesc="Me and My Shadow is a puzzle/platform game. It has an interesting concept and rather unique gameplay."
arch=('i686' 'x86_64')
url="http://meandmyshadow.sourceforge.net/"
license=('GPL')
depends=('sdl' 'sdl_gfx' 'sdl_image' 'curl' 'libarchive' 'sdl_ttf' 'sdl_mixer')
makedepends=('make' 'cmake')
conflicts=()
source=('http://sourceforge.net/projects/meandmyshadow/files/${pkgver}/meandmyshadow-${pkgver}-src.tar.gz/download' 'fix.patch')
md5sums=('a943cb32c901f65843be517ff781943b'
         '1bfa7c46ee5d8404e3ad1381519e0505')
build() {
	cd $srcdir/$pkgname-$pkgver
    
    patch -p0 < ../fix.patch

	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make install DESTDIR=$pkgdir
}
