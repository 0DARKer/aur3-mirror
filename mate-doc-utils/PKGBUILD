pkgname=mate-doc-utils
pkgver=0.0.0
pkgrel=1
pkgdesc="Documentation utilities for MATE"
arch=('any')
license=('GPL' 'LGPL')
depends=('libxslt' 'python2' 'docbook-xml' 'rarian')
makedepends=('pkgconfig' 'intltool')
url="http://matsusoft.com.ar/projects"
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('87beaa74ffe66cabb8056a97bafa80406364ff111e9d2596a3b3ad130fc9741f')
groups=('mate')

build() {
	cd "${srcdir}/${pkgname}"
	PYTHON=/usr/bin/python2 ./configure --prefix=/usr --sysconfdir=/etc \
		--mandir=/usr/share/man --localstatedir=/var --disable-scrollkeeper
	make
}

package() {
	cd "${srcdir}/${pkgname}"
    make DESTDIR="$pkgdir" install || return 1
}
