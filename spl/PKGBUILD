# Contributor: Travis Willard <travis@archlinux.org>

pkgname=spl
pkgver=1.2.1
pkgrel=1
pkgdesc="The Shakespeare Programming Language"
arch=('i686')
url="http://shakespearelang.sourceforge.net"
license=('GPL')
depends=('gcc-libs')
makedepends=('bison' 'flex')
source=(http://shakespearelang.sf.net/download/$pkgname-$pkgver.tar.gz)
md5sums=('c31de8415af80819eb944a1cecadddde')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make || return 1
  make install || return 1

  install -dm0755 $pkgdir/usr/share/$pkgname
  cp -r spl/* $pkgdir/usr
  cp -r include/*wordlist $pkgdir/usr/share/$pkgname/
  
}

# vim:set ts=2 sw=2 et:
