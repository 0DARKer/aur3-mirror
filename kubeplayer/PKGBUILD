# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=kubeplayer
pkgver=1.1
pkgrel=2
pkgdesc="A multimedia player for different online platforms"
arch=('any')
url='https://projects.kde.org/projects/playground/multimedia/kubeplayer'
license=('GPL')
depends=('kdebindings-korundum')
makedepends=('cmake' 'automoc4')
source=("kubeplayer.tar.gz::http://quickgit.kde.org/?p=kubeplayer.git&a=snapshot&h=f18e1448842bc66b95dd943355e14577ecdcfb47")
md5sums=('6c11e1b45442d79f9a12138ed376ee0e')
install=$pkgname.install

build() {
  cd $srcdir/$pkgname
  mkdir build
  cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/$pkgname/build
  make DESTDIR=$pkgdir install
}
