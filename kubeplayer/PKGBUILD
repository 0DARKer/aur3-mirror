# Maintainer: A Rojas <nqn1976 @ gmail.com>

pkgname=kubeplayer
pkgver=1.1
pkgrel=1
pkgdesc="A multimedia player for different online platforms"
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/playground/multimedia/kubeplayer'
license=('GPL')
depends=('kdebindings-korundum')
makedepends=('cmake' 'automoc4')
source=("http://quickgit.kde.org/?p=kubeplayer.git&a=snapshot&h=f18e1448842bc66b95dd943355e14577ecdcfb47")
md5sums=('e4beffd7fb6a1147c1eccb1451f797c1')

build() {
  cd $srcdir/$pkgname
  mkdir build
  cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/$pkgname/build
  make DESTDIR=${pkgdir} install
}
