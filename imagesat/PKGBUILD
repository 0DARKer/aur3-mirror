# Maintainer: Chipster Julien <julien dot chipster @ archlinux dot fr>
pkgname=imagesat
url="http:www.google.fr"
pkgver=0.1
pkgrel=3
pkgdesc="Daemon that can download satellite images"
arch=('any')
license=('GPL')
depends=(python python3-imaging)
source=($pkgname-$pkgver.tar.gz)
md5sums=('bc69c94647c123b328e3c31694833616')
install=imagesat.install

build()
{
 echo "nothing to do"
 # nothing to do
}
package()
{
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/etc/conf.d"
  mkdir -p "$pkgdir/etc/rc.d"
  mkdir -p "$pkgdir/var/log/imagesat"
  
  # copy
  
  cp -a imagesat.py "$pkgdir/usr/bin/imagesat"
  cp -a imagesat.cfg "$pkgdir/etc"
  cp -a imagesat_conf_d "$pkgdir/etc/conf.d/imagesat"
  cp -a imagesat_rc_d "$pkgdir/etc/rc.d/imagesat"

  # fixing right
  
  chmod 640 "$pkgdir/etc/imagesat.cfg"
  chmod 640 "$pkgdir/etc/conf.d/imagesat"
  chmod 750 "$pkgdir/var/log/imagesat"
  chmod 750 "$pkgdir/etc/rc.d/imagesat"
  chmod 750 "$pkgdir/usr/bin/imagesat"
}
