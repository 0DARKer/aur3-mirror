# Maintainer: Chipster Julien <julien dot chipster @ archlinux dot fr>
pkgname=imagesat
url="https://github.com/Chipsterjulien/imagesat"
pkgver=0.3.1
pkgrel=5
pkgdesc="Daemon that can download satellite images"
arch=('any')
license=('GPL')
depends=(python python3-imaging python-requests python-yaml git python-setuptools)
source=($pkgname-$pkgver.tar.gz)
md5sums=('602b816f564cc6a82575c0a12cf7c5f0')
install=imagesat.install

package()
{
  cd "$srcdir/$pkgname-$pkgver/"
  python setup.py install --root="${pkgdir}/" --optimize=1
}
