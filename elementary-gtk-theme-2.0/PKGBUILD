# Maintainer: paterbrown <paterbrown at silberhelme dot de>
# Contributor: Daniel Milde <info@milde.cz>

pkgname=elementary-gtk-theme-2.0
_pkgname=elementary
pkgver=2.0
pkgrel=1
pkgdesc="The official elementary GTK theme designed to be smooth, attractive, fast, and usable."
arch=('any')
url="http://launchpad.net/egtk"
license=('GPL2')
depends=('gtk-engine-murrine' 'gtk-aurora-engine')
optdepends=('elementary-icons: the elementary icon theme [AUR]'
	'nautilus-elementary-bzr: the fork of Nautilus for simplicity (installation highly recommended) [AUR]')
source=(http://launchpad.net/egtk/2.0/${pkgver}/+download/${_pkgname}.tar.gz)
md5sums=('2b4ec848394dd61202edb81d8dc1c6fd')
conflicts=('elementary-gtk-theme')

build () {
	mkdir -p ${pkgdir}/usr/share/themes
	cp -r ${srcdir}/${_pkgname} ${pkgdir}/usr/share/themes/${_pkgname}
	
	# remove unnecessary files
	rm -rf ${pkgdir}/usr/share/themes/${_pkgname}/debian
	rm -rf ${pkgdir}/usr/share/themes/${_pkgname}/.bzr
}
