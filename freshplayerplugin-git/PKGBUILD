# Maintainer: Behem0th <grantipak@gmail.com>

pkgname=freshplayerplugin-git
_realname=freshplayerplugin
pkgver=20140401
pkgrel=1
pkgdesc='PPAPI-host NPAPI-plugin adapter.'
arch=('i686' 'x86_64')
url='https://github.com/i-rinat/freshplayerplugin'
license=('MIT')
depends=('pango' 'alsa-lib' 'freetype2' 'xulrunner' 'uriparser' 'google-chrome')
makedepends=('git' 'cmake')
provides=('freshplayerplugin')
conflicts=('freshplayerplugin')
source=('git://github.com/i-rinat/freshplayerplugin.git')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_realname"
  git log -1 --format="%cd" --date=short | tr -d -
}

build() {
  cd "$srcdir/$_realname"
  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  install -d "$pkgdir/usr/lib/mozilla/plugins"
  cd "$srcdir/$_realname"
  install -Dm644 libfreshwrapper.so "$pkgdir/usr/lib/mozilla/plugins"
}

