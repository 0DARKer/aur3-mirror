 
# Contributor: said <atvordhosbn at gmail dot com> 

pkgname=qviaggiatreno
pkgver=2009.09
pkgrel=1
pkgdesc="Un'applicazione per controllare gli orari dei treni in tutta Italia tramite il sito viaggiatreno.it."
arch=('i686' 'x86_64')
url="http://www.solotreni.net"
license=('GPL2')
depends=('qt')
source=(http://download49.mediafire.com/jz32zhh0nEzg/30zzwingwhx/qviaggiatreno-2009.09-src.zip)
md5sums=('8ab132603e550efe209e5744638602fd')

build() {
    cd  $srcdir/$pkgname-$pkgver
    qmake || return 1
    make || return 1
    install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop || return 1
    install -Dm755 bin/$pkgname $pkgdir/usr/bin/$pkgname || return 1
}
