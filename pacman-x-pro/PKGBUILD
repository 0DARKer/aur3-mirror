pkgname=pacman-x-pro
pkgver=1.0
pkgrel=1
pkgdesc="An alternative Pacman Tool! With much better functions! With inteligent sudo, dep/rpm install and better AUR-Support! (Search/Install/Update)"
arch=('any')
url="http://www.archlinux.org"
license=('GPL')
install=${pkgname}.install
depends=('deb2targz' 'pacaur')
conflicts=()
source=("pacman-x-pro.tar.gz")
md5sums=('029eb362670e7f00a8005e208b71ee56')


build(){
  cp -r "$srcdir/usr" "$pkgdir/usr"  
  }