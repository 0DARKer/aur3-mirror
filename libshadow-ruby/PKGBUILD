# Maintainer: Maskawanian <aur@cryingwolf.org>
pkgname=libshadow-ruby
pkgver=1.4.1
pkgrel=8
pkgdesc="Interface of shadow password for Ruby 1.8"
arch=(i686 x86_64)
depends=('ruby')
license=('publicdomain')
url=('http://packages.debian.org/source/sid/libshadow-ruby')
source=(http://ftp.de.debian.org/debian/pool/main/libs/libshadow-ruby/libshadow-ruby_$pkgver.orig.tar.gz)
md5sums=(425b742ac43bff359c1717360f761790)

build() {
	cd ${startdir}/src/shadow-$pkgver || return 1
	ruby extconf.rb || return 1
	make || return 1
	make DESTDIR=${startdir}/pkg install
}
