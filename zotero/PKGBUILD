# Maintainer: Juanma Hernandez <juanmah@gmail.com>

pkgname=zotero
pkgver=3.0.2
pkgrel=1
pkgdesc='Zotero Standalone. Is a free, easy-to-use tool to help you collect, organize, cite, and share your research sources.'
arch=('i686' 'x86_64')
url='http://www.zotero.org/support/standalone'
license=('GPL3')
_arch=i686
[ "$CARCH" = "x86_64" ] && _arch=x86_64
source=(http://download.zotero.org/standalone/$pkgver/Zotero-${pkgver}_linux-${_arch}.tar.bz2)
md5sums=('cdeccb9cc1665d7a6538ce195971ee3c')
[ "$CARCH" = "x86_64" ] && md5sums=('f789528d0ca0da4237c995f4b70cbec6')

build() {

	mkdir -p $pkgdir/usr/lib/zotero
	mkdir -p $pkgdir/usr/bin
	mv $srcdir/Zotero_linux-$_arch/* $pkgdir/usr/lib/zotero
	ln -s /usr/lib/zotero/run-zotero.sh $pkgdir/usr/bin/zotero
	sed -i -e 's/MOZ_APPRUNNER_NAME=".\/zotero"/MOZ_APPRUNNER_NAME="\/usr\/lib\/zotero\/zotero"/g' $pkgdir/usr/lib/zotero/run-zotero.sh

}
