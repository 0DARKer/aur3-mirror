# Maintainer: Juanma Hernandez <juanmah@gmail.com>

pkgname=zotero
pkgver=2.1a3
pkgrel=1
pkgdesc='Standalone-Zotero-Alpha. Is a free, easy-to-use tool to help you collect, organize, cite, and share your research sources.'
arch=('i686' 'x86_64')
url='http://www.zotero.org/support/standalone'
license=('GPL3')
_arch=i686
[ "$CARCH" = "x86_64" ] && _arch=x86_64
source=(http://www.zotero.org/download/standalone/$pkgver/Zotero_linux-${_arch}.tar.bz2)
md5sums=('a217e5cff95f8e45b231ff49181678d0')
[ "$CARCH" = "x86_64" ] && md5sums=('aac6b425d6c824d03ebfc3f512e877bf')

build() {

	mkdir -p $pkgdir/usr/lib/zotero
	mkdir -p $pkgdir/usr/bin
	mv $srcdir/Zotero_linux-$_arch/* $pkgdir/usr/lib/zotero
	ln -s $pkgdir/usr/lib/zotero/run-zotero.sh $pkgdir/usr/bin/zotero
	sed -i -e 's/MOZ_APPRUNNER_NAME=".\/zotero"/MOZ_APPRUNNER_NAME="\/usr\/lib\/zotero\/zotero"/g' $pkgdir/usr/lib/zotero/run-zotero.sh

}
