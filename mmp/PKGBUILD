pkgname=mmp
pkgver=0.2
pkgrel=1
pkgdesc="a mplayer wrapper to play the music"
arch=('any')
license=('GPL')
url="http://www.vinoca.org/"
depends=('file')
source=(http://vincasrcfiles.googlecode.com/files/mmp.tar.gz)
sha1sums=('54305c968be24b07b8e6e56fe0df80dc8e39902f')

build() {
  install -d	${pkgdir}/usr/bin
  install -m755 ${srcdir}/${pkgname} ${pkgdir}/usr/bin/
}
