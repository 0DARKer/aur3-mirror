# Maintainer: Simone Sclavi 'Ito' darkhado@gmail.com
pkgname=supertombola
pkgver=2.0
pkgrel=3
pkgdesc="QT program for "Tombola" italian game." 
arch=('i686' 'x86_64')
url="http://supertombola.sourceforge.net/"
license=('GPL')
depends=('qt')
source=("http://switch.dl.sourceforge.net/project/supertombola/Supertombola_${pkgver}_qt/supertombola_qt_v${pkgver}_src.tar.gz")
md5sums=('7f3bddf3eda4b3e902636f8872fef8e9')

build() {
    cd $pkgname
    qmake supertombola.pro
    make
}

package() {
    cd $pkgname
    install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
