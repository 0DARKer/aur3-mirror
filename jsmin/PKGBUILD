# Contributor: Joey Mazzarelli <mazzarelli@gmail.com>
pkgname=jsmin
pkgver=2008.08.03
pkgrel=3
pkgdesc="A filter which removes comments and unnecessary whitespace from JavaScript  files."
arch=('i686' 'x86_64')
url="http://www.crockford.com/javascript/jsmin.html"
license=('custom')
source=('http://www.crockford.com/javascript/jsmin.c')
noextract=()
md5sums=('8847fd99576468d6c9e76420da0b6b55')

build() {
  cd $srcdir
  make jsmin || return 1
  head -n 25 jsmin.c > COPYING
  install -D jsmin $pkgdir/usr/bin/jsmin
  install -D -m 644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}

