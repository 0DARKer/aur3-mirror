pkgname=python-pybrain
pkgver=0.3
pkgrel=1
pkgdesc='Modular Machine Learning Library for Python'
arch=('any')
url='http://pybrain.org/'
license=('BSD')
depends=('python-scipy')
optdepends=('python-matplotlib: for plotting')
source=("http://pybrain.org/files/PyBrain-${pkgver}.zip")
md5sums=('a7c5ce70cd2f062779c256a9667b5ff9')

build() {
  cd pybrain-pybrain-a6bee81

  python setup.py build
}

package() {
  cd pybrain-pybrain-a6bee81

  python setup.py install --root=${pkgdir} --optimize=1
} 
