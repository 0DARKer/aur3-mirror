pkgname=tkgate
pkgver=1.8.7
pkgrel=2
pkgdesc="A digital circuit simulator with a tcl/tk-based graphical editor"
depends=('tcl' 'tk')
url="http://www.tkgate.org"
license=("GPL")
arch=('i686')
source=(ftp://gadoid.ices.cmu.edu/pub/tkgate/$pkgname-$pkgver.tgz \
	config.diff)
md5sums=('628b5ca66283fc1473c9ef7300ae73c8' \
	'8cdeddd667987fbfc8d4f7e232242bdc')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p0 < ../config.diff
  ./configure
  make || return 1
  make DESTDIR=$startdir/pkg install
  echo "> You can safely ignore the above Error"
  cp -r locale $startdir/pkg/usr/share/$pkgname-$pkgver
  make DESTDIR=$startdir/pkg install.man
}
