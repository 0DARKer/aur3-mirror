pkgname=asoundconf
pkgver=20090121
pkgrel=1
pkgdesc="Get and set configuration parameters in ~/.asoundrc.asoundconf"
url='https://launchpad.net/asoundconf-ui'
arch=('i686' 'x86_64')
license=('GPL')
depends=('python')
makedepends=
source=('http://bazaar.launchpad.net/%7Ecrimsun/asoundconf-ui/asoundconf-trunk/download/head%3A/asoundconf-20070710013131-u0ilplzisbkiiyt2-1/asoundconf' \
'http://bazaar.launchpad.net/%7Etsmithe/asoundconf-ui/asoundconf-gtk/download/head%3A/asoundconfgtk-20070616073228-2v7itdhy66gmtcsg-8/asoundconf-gtk' \
'http://bazaar.launchpad.net/%7Ecrimsun/asoundconf-ui/asoundconf-trunk/download/head%3A/asoundconf.1-20070710013131-u0ilplzisbkiiyt2-2/asoundconf.1' \
'asoundconf-gtk.desktop' \
'asoundconf.png')
md5sums=('1353073e862ff71501ffcc065aa53aae' \
         'd52761623e68e64098c7e6f8dc10a859' \
         '6aff1cf1e1a23d37af4d5faa5cbd5760' \
         'b6db9074f797b57bedef0d08a7d8f7d0' \
         '2530c5a128c010aee47bc4a28b75e15d')

build() {
    gzip --stdout asoundconf.1 >asoundconf.1.gz
    install -D asoundconf "$pkgdir/usr/bin/asoundconf" || return 1
    install -D asoundconf-gtk "$pkgdir/usr/bin/asoundconf-gtk" || return 1
    install -D --mode ugo=r,u+w asoundconf.1.gz \
        "$pkgdir/usr/share/man/man1/asoundconf.1.gz"
    install -D --mode ugo=r,u+w \
        "$startdir/asoundconf-gtk.desktop" \
        "$pkgdir/usr/share/applications/asoundconf-gtk.desktop"
    install -D --mode ugo=r,u+w \
        "$startdir/asoundconf.png" \
        "$pkgdir/usr/share/pixmaps/asoundconf.png"
}

