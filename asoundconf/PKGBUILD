# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=asoundconf
pkgver=1.0.1
pkgrel=2
epoch=1
pkgdesc="Get and set configuration parameters in ~/.asoundrc.asoundconf"
arch=('any')
url="https://code.launchpad.net/asoundconf-ui"
license=('GPL')
depends=('python2')
# updated to work with the python -> python2 transition
# updated to handle tabs and other white chars in the default alsa configuration
source=($pkgname \
        http://bazaar.launchpad.net/~tsmithe/asoundconf-ui/asoundconf-gtk/download/head:/asoundconfgtk-20070616073228-2v7itdhy66gmtcsg-8/asoundconf-gtk
        http://bazaar.launchpad.net/~tsmithe/asoundconf-ui/asoundconf-gtk/view/head:/asoundconf-gtk.desktop)
md5sums=('5527c173169e47510ebba1745cbf0171'
         'd52761623e68e64098c7e6f8dc10a859'
         '8dda5067214f4dfea1f4f968eaa17e7d')

package() {
  install -D -m755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
  # gtk interface
  install -D -m755 "$srcdir/asoundconf-gtk" "$pkgdir/usr/bin/asoundconf-gtk"
  # fix the hashbang
  sed -i 's|python|python2|' "$pkgdir/usr/bin/asoundconf-gtk"
  install -D -m755 "$srcdir/asoundconf-gtk.desktop" "$pkgdir/usr/share/applications/asoundconf-gtk.desktop"
}

# vim:set ts=2 sw=2 et:
