update-icon(){
	xdg-icon-resource forceupdate --theme hicolor &>/dev/null
    update-desktop-database -q
}

post_install() {
	update-icon
    ln -s /opt/genymotion/genymotion /usr/local/bin/genymotion
    ln -s /opt/genymotion/genymotion-shell /usr/local/bin/genymotion-shell
}

post_upgrade() {
    update-icon
}

post_remove() {
    update-icon
    rm /usr/local/bin/genymotion{,-shell}

}

