# Contributor: zoulnix <http://goo.gl/HQaP>
pkgname=perl-opengl
pkgver=0.64
pkgrel=2
pkgdesc="OpenGL Perl module written in C using Perl XS."
arch=('i686' 'x86_64')
url="http://graphcomp.com/opengl/"
license=('GPL' 'Artistic')
depends=('freeglut' 'perl')
makedepends=('gcc' 'make' 'pkg-config')
options=('!emptydirs')
source=(http://cpan.org/authors/id/C/CH/CHM/OpenGL-${pkgver}.tar.gz)
md5sums=('e94f3e3d0995df8bc60cfa126e9f1d4e')

build() {
  cd ${srcdir}/OpenGL-${pkgver}

  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
}

package() {
  cd ${srcdir}/OpenGL-${pkgver}

  make DESTDIR=${pkgdir} install || return 1

  # Removing unnecessary stuff
  find ${pkgdir} -depth -type f -name "perllocal.pod" -exec rm {} \;
  find ${pkgdir} -depth -type f -name ".packlist" -exec rm {} \;
}
