# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-test-most'
pkgver='0.21'
pkgrel='1'
pkgdesc="Most commonly needed test functions and features."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-exception-class>=1.14' 'perl-test-deep' 'perl-test-differences' 'perl-test-exception' 'perl-test-warn>=0.1')
url='http://search.cpan.org/dist/Test-Most'
source=('http://search.cpan.org/CPAN/authors/id/O/OV/OVID/Test-Most-0.21.tar.gz')
md5sums=('8066a15a40154d011296b33ce02a1cf8')

build() {
  DIST_DIR="${srcdir}/Test-Most-0.21"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
