pkgname=python-werkzeug-git
_pkgname=werkzeug
pkgver=2103.05a8303
pkgrel=1
pkgdesc='The Swiss Army knife of Python web development (git python3 version)'
arch=('i686', 'x86_64')
url='http://werkzeug.pocoo.org/'
license=('custom:BSD')
depends=('python')
makedepends=('git')
conflicts=('python-werkzeug')
provides=('python-werkzeug')
source=('git://github.com/mitsuhiko/werkzeug.git#branch=sprint-branch')
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/$_pkgname"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

check() {
    cd "$srcdir/$_pkgname"

    python setup.py test
}

build() {
    cd "$srcdir/$_pkgname"

    python setup.py build
}

package() {
    cd "$srcdir/$_pkgname"

    python setup.py install --root=${pkgdir} --optimize=1

    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/python-werkzeug
}
