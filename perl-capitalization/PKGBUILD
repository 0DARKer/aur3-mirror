# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-capitalization
pkgver=0.03
pkgrel=1
pkgdesc="No capitalization on method names"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~miyagawa/capitalization-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-devel-symdump')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/M/MI/MIYAGAWA/capitalization-$pkgver.tar.gz")
md5sums=('94998b37b4f86bd2e5738ab3a8fb4e7c')

build() {
	cd "$srcdir/capitalization-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/capitalization-$pkgver"
	make install DESTDIR="$pkgdir"
}
