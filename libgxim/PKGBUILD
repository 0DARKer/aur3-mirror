# Maintainer: Armin K. <krejzi at email dot com>

pkgname=libgxim
pkgver=0.5.0
pkgrel=1
pkgdesc="GObject-based XIM protocol library"
arch=('i686' 'x86_64')
url="http://tagoh.bitbucket.org/libgxim/"
license=('LGPL2')
depends=('gtk2')
makedepends=('check' 'ruby')
options=('!libtool')
source=("https://bitbucket.org/tagoh/${pkgname}/downloads/${pkgname}-${pkgver}.tar.bz2")
md5sums=('4bb1fa63d00eb224439d413591c29a6a')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make install DESTDIR="${pkgdir}"

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
