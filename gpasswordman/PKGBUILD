# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=gpasswordman
pkgver=2.1.0
pkgrel=1
pkgdesc="Simple, lightweight password manager"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/gpasswordman/"
license=('APACHE')
depends=('fontconfig' 'gcc-libs' 'glib2'  'libpng12' 'libsm' 'libxext' 'libxrender')
[ "$CARCH" == "x86_64" ] && depends=('lib32-fontconfig' 'lib32-gcc-libs' 'lib32-glib2' 'lib32-libpng12' 'lib32-libsm' 'lib32-libxext' 'lib32-libxrender')
source=(http://downloads.sourceforge.net/$pkgname/${pkgname}_v${pkgver}.tar.gz)
md5sums=('286ede3f88bb6a259d2c05b7828f347f')

build() {
  cd $srcdir/gpasswordmanager$pkgver

  # Binary
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname

  # Desktop icon
  install -Dm644 $startdir/gpasswordman.png     $pkgdir/usr/share/pixmaps/gpasswordman.png
  install -Dm644 $startdir/gpasswordman.desktop $pkgdir/usr/share/applications/gpasswordman.desktop
}
