# Maintainer: grvrulz <gaurav.conetfun(AT)gmail(DOT)com>
pkgname=sqlheavy
pkgver=20110523
pkgrel=1
pkgdesc="SQLHeavy is a wrapper on top of SQLite with a GObject-based interface"
url="https://code.google.com/p/sqlheavy/"
arch=('x86_64' 'i686')
license=('LGPL')
depends=('sqlite3' 'vala')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
md5sums=()
_gitroot="git://gitorious.org/sqlheavy/sqlheavy.git"
_gitname="sqlheavy"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d "${srcdir}/${_gitname}" ] ; then
    cd ${_gitname} && git pull --rebase
  else
    git clone ${_gitroot}
    cd ${_gitname}
  fi
  
  msg "GIT checkout done or server timeout"
} 
package() {
  cd "${srcdir}/${pkgname}"
  ./autogen.sh
  make
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

