# Maintainer: Shockrates <antisocrates@gmail.com>

pkgname=asio
_filename=steinberg-asio
_extraname=ASIOSDK2
pkgver=2.2
pkgrel=1
pkgdesc="ASIO SDK"
arch=('any')
url="http://sourceforge.net/projects/stasio/"
license=('custom')
source=('http://sourceforge.net/projects/stasio/files/Stasio2.2/stasio2.2.zip')
md5sums=('ecce6cb104d9e729877a9befba4bd952')

build() {
  # install license
  cd "$srcdir/$_extraname"

  mkdir -p "$pkgdir/usr/share/licenses/$_filename"
  install -m644 *Licensing* "$pkgdir/usr/share/licenses/$_filename/"

  # install headers
  cd common
  mkdir -p "$pkgdir/usr/include/$_filename"
  install -m644 * "$pkgdir/usr/include/$_filename/"
}