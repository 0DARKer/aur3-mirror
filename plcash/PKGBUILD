pkgname=plcash
pkgver=2.0
pkgrel=1
pkgdesc="platform-independent personal financial program"
arch=('i686' 'x86_64')
url="http://www.arachnoid.com/PLCash/index.html"
license=('custom:careware')
depends=('java-runtime')
source=(http://www.arachnoid.com/PLCash/PLCash.jar 'plcash.sh' 'careware.rtf')
noextract=('PLCash.jar')
md5sums=('f05021add10f54dc1c9337f88db24783' \
'b49b87f2ceec353f196d9dfac3b521c1' \
'390f9eb1765746df88bbfeaf282252b8') 

build() {
  cd $srcdir/
install -d $pkgdir/{opt/$pkgname,usr/{bin,share/licenses/$pkgname}}
install -D PLCash.jar $pkgdir/opt/$pkgname/
install -Dm755 plcash.sh $pkgdir/usr/bin/plcash
install -Dm644 careware.rtf $pkgdir/usr/share/licenses/$pkgname/

}

