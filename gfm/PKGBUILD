pkgname=gfm
pkgver=1.04
pkgrel=2
pkgdesc="TIgroup files manipulator for TiLP"
arch=(i686 x86_64)
url="http://lpg.ticalc.org/prj_gfm/"
license=('GPL')
depends=('libticalcs')
source=('http://lpg.ticalc.org/prj_gfm/download/gfm-1.04.tar.bz2')
#	 'gfm.desktop')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    #KDE Users can remove the --without-kde line
    #to use KDE3 native file dialons
    ./configure --without-kde --prefix=/usr || return 1
    make || return 1
    make DESTDIR=${pkgdir} install || return 1

#    install -m755 -d ${pkgdir}/usr/share/applications
#    install -m644 ${srcdir}/gfm.desktop ${pkgdir}/usr/share/applications
}
md5sums=('7e268aa102f7226bed6424789ec34099')
#         'e511eca85de3961503d60655c882ad7c')
