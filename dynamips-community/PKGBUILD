# Maintainer: korjjj <korjjj@gmail.com>
# Contributor: Tarjaizaid <tarjaizaid@gmail.com>

pkgname=dynamips-community
pkgver=0.2.8RC7
pkgrel=5
pkgdesc="Cisco router emulator. Community version maintained by GNS3 team."
arch=('i686' 'x86_64')
url="http://www.gns3.net/dynamips"
license=('GPL2')
depends=(libpcap util-linux elfutils)
conflicts=(dynamips dynamips-community-git)
source=('https://codeload.github.com/GNS3/dynamips-community/zip/v0.2.8-RC7-community'
	'dynamips_0.2.8RC7.diff')

md5sums=('0fc54778302eb2ada185cc1dce3b2bac'
         '63f36ae2225e76705ca6c46949178def')

build() {
  if test "$CARCH" == x86_64; then
    export DYNAMIPS_ARCH=amd64
  fi
  cd $srcdir/dynamips-community-0.2.8-RC7-community
  patch -p1 < ../dynamips_0.2.8RC7.diff
  make
}

package() {
  cd $srcdir/$pkgname-0.2.8-RC7-community
  make DESTDIR="$pkgdir/usr" install
}
