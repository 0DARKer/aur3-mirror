# Contributor: Berkus <berkus@madfire.net>

pkgname=khalkhiapplet
pkgver=0.5.3_rc1
pkgrel=1
pkgdesc="Khalkhi applet for Kicker"
arch=(i686)
url="http://www.kde-apps.org/content/show.php?content=54451"
license=('GPL')
depends=('khalkhi')
source=(http://kde-apps.org/CONTENT/content-files/54451-$pkgname-${pkgver/_/-}.tar.bz2)
md5sums=('5a08e5bf3f926d4ccc48a9ae12615f40')

build() {
  . /etc/profile.d/qt.sh
  cd $startdir/src/$pkgname-${pkgver/_/-}
  ./configure --prefix=/opt/kde
  make || return 1
  make DESTDIR=$startdir/pkg install
}
