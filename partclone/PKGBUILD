# Maintainer: Dan Serban
# Contributors: Franz Burgmann, Todd Partridge (Gen2ly), Ivan Sichmann Freitas

pkgname=partclone
pkgver=0.x.xx.latest
pkgrel=1
pkgdesc="Backup and restore a partition for several file system types"
arch=(i686 x86_64)
url=http://partclone.org/
license=(GPL)
depends=(e2fsprogs progsreiserfs dosfstools ncurses)
makedepends=(gcc lynx ncurses pkgconfig)
conflicts=(partclone-svn partclone-testing)

build()
{
  rm partclone.tar.gz 2>/dev/null || true
  _url=$(lynx -dump http://sourceforge.net/projects/partclone/ | grep -o http.*projects.*download)
  wget -O partclone.tar.gz ${_url}
  bsdtar -xf partclone.tar.gz
  cd $(ls -1d partclone-*/ | tail -1)
  ./configure --prefix=/usr --enable-extfs --enable-reiserfs --enable-fat --enable-ncursesw
  make
  make DESTDIR="${pkgdir}" install
}

