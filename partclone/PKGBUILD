pkgname=partclone
pkgver=0.2.16
pkgrel=1
pkgdesc="Backup and restore a partition for numerous file-systems types"
arch=('i686' 'x86_64')
url="http://partclone.org/"
license=('GPL')
depends=('e2fsprogs' 'progsreiserfs' 'ntfsprogs' 'dosfstools' 'ncurses')
makedepends=('gcc' 'ncurses' 'pkgconfig')
conflicts=('partclone-svn' 'partclone-testing')
source=("http://downloads.sourceforge.net/project/partclone/stable/${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('b28059c89ff11e2b3a3afa45da51a738')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr --enable-extfs --enable-reiserfs --enable-hfsp --enable-fat --enable-ntfs --enable-ncursesw
	make || return 1
	make DESTDIR="$pkgdir/" install
}
