# Maintainer: TDY <tdy@gmx.com>

pkgname=ruby-tzinfo
pkgver=0.3.24
pkgrel=1
pkgdesc="A Ruby library for time zone transformations"
arch=('any')
url="http://tzinfo.rubyforge.org/"
license=('MIT')
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/73991/${pkgname#*-}-$pkgver.gem)
md5sums=('f93ce10a298d08a8d3e5b8e405d3c211')

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${pkgname#*-}-$pkgver.gem
}
