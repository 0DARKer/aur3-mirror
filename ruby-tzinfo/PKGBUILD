# Maintainer: TDY <tdy@gmx.com>

pkgname=ruby-tzinfo
pkgver=0.3.23
pkgrel=1
pkgdesc="A Ruby library for time zone transformations"
arch=('any')
url="http://tzinfo.rubyforge.org/"
license=('MIT')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubyforge.org/frs/download.php/72155/tzinfo-$pkgver.gem)
md5sums=('a9bafbf304c3589c43f69509395414e9')

build() {
  cd "$srcdir"
  bsdtar -xf data.tar.gz || return 1
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  find /usr/lib/ruby/gems -maxdepth 1 -type d -name '1.*' \
    -exec gem install tzinfo-$pkgver.gem -i "$pkgdir{}" \;
}
