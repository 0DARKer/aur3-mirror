# Contributor: Mark Taylor <skymt0@gmail.com>
pkgname=trash
pkgver=0.2
pkgrel=3
pkgdesc='Command-line utility to move files to a shared trash can'
url='http://skymt0.googlepages.com/trash'
arch=('i686')
depends=('python')
makedepends=('python')
license='GPL'
source=("http://skymt0.googlepages.com/$pkgname-$pkgver.tar.gz")
md5sums=('74b0e6c467621fc254172f5ac5c39cb4')

build() {
    cd $startdir/src/$pkgname-$pkgver
    install -D -m 644 trash.py $startdir/pkg/usr/lib/python2.5/trash.py
    install -D -m 755 trash.py $startdir/pkg/usr/bin/trash
}
