pkgname=gimagereader
pkgver=0.8.1
pkgrel=4
pkgdesc="A graphical GTK frontend to tesseract-ocr"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/gimagereader/"
license=('GPL')
groups=('office')
depends=('gtk2' 'tesseract' 'python2' 'python2-gtkspell' 'pygtk' 'pycairo' 'imagemagick' 'python2-pyenchant' 'python2-poppler' 'pil-sane')
source=(http://downloads.sourceforge.net/gimagereader/gimagereader-$pkgver.tar.gz)
md5sums=('c0072eb01ab2208b4cf0c23db52c9859')
build() {
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py install --prefix=/usr --root="${pkgdir}" || return 1
}

