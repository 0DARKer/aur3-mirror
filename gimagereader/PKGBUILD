pkgname=gimagereader
pkgver=2.93
pkgrel=6
pkgdesc="A graphical GTK frontend to tesseract-ocr"
arch=('any')
url="http://sourceforge.net/projects/gimagereader/"
license=('GPL3')
depends=('hicolor-icon-theme' 'sane' 'tesseract' 'gtkspellmm')
makedepends=('gtkmm3' 'desktop-file-utils' 'intltool' 'poppler-glib')
install=${pkgname}.install
source=(
  "http://sourceforge.net/projects/gimagereader/files/${pkgver}/${pkgname}-${pkgver}.tar.xz"
)
sha256sums=('f68044faff1442d436d3f8e007004468133f5d4d4286314a790a58cc8f7bedca')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
