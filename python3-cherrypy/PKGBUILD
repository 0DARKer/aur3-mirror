# Maintainer: BeholdMyGlory <larvid@gmail.com>

pkgname=python3-cherrypy
pkgver=3.2.0rc1
pkgrel=1
pkgdesc="A pythonic, object-oriented web development framework"
arch=('i686' 'x86_64')
url="http://www.cherrypy.org"
license=('BSD')
conflicts=('cherrypy')
depends=('python')
source=(http://download.cherrypy.org/cherrypy/$pkgver/CherryPy-$pkgver-py3.tar.gz 
	license)

md5sums=('fca615e51f8ff8f9a64c63d02019414d'
         '22365dc6b0e6835b53da009aa36af017')
build() {
    cd $srcdir/CherryPy-$pkgver
    patch -p2 < ${startdir}/bufsize.patch
    python ./setup.py install --root=$pkgdir
    install -D -m644 $srcdir/license $pkgdir/usr/share/licenses/$pkgname/license
}
