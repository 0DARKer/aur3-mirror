#Contributor: Alexandre Gambini <chs_ale@msn.com>

pkgname=gitso
pkgver=0.5
pkgrel=1
pkgdesc="Frontend to reverse VNC connections. It is meant to be a simple two-step process that connects one person to another's screen. First, the support person offers to give support. Second, the person who needs help connects and has their screen remotely visible."
arch=('i686')
url="http://code.google.com/p/gitso/"
license=('GPL 3')
depends=('wxpython' 'x11vnc' 'tightvnc')
source=(http://gitso.googlecode.com/files/Gitso_linux_all.tar.bz2)
md5sums=('23a8a84ad880256b9c678ee6b213d995')

build() {
  cd "${srcdir}/Gitso"
  mkdir $startdir/pkg/usr/
  cp -r *  $startdir/pkg/usr

}

