# Contributors: Evilandi666 <evilandi.aur(at)googlemail.com>
pkgname=hxtools
pkgver=20100625
pkgrel=2
pkgdesc="A collection of tools and shell scripts that have accumulated over the years. "
arch=('i686' 'x86_64')
url="http://jengelh.medozas.de/projects/hxtools/"
license=('GPL')
depends=('libhx>=3.4' 'perl' 'bash')
source=(http://jengelh.medozas.de/files/hxtools/hxtools-20100625.tar.xz)
md5sums=('cd505cb8b83f170fc8c5614bc363302a')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --libexecdir=/usr/lib --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
