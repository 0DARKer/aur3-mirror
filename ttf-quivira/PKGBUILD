pkgname=ttf-quivira
pkgver=3.6
pkgrel=1
pkgdesc="A Unicode-based TrueType font with a large character repertoire."
arch=('any')
url="http://www.quivira-font.com"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
source=(http://www.quivira-font.com/files/Quivira.ttf LICENSE)
md5sums=('63fa0d3d0491f440d4997f406a286e94'
         'a543bc4880aeb2b0d427d4ac2fc76980')
install=$pkgname.install

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/Quivira.ttf $pkgdir/usr/share/fonts/TTF
  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
