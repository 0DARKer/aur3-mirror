# Contributor: Maciej Sitarz <macieks@freesco.pl>

pkgname=firefox-spell-en-gb
pkgver=1.19
_fx_ver=3.5
pkgrel=1
pkgdesc="David Bartlett's British English dictionary for Firefox"
arch=(any)
url="https://addons.mozilla.org/firefox/dictionaries/"
license="GPL"
depends=("firefox>=${_fx_ver}")
source=(http://releases.mozilla.org/pub/mozilla.org/addons/3366/british_english_dictionary-${pkgver}-fx+zm+tb.xpi)
md5sums=('09434ac4112b4ddf9d8d88ba4c68d860')

build() {
        cd $startdir/src/dictionaries
	install -D -m 644 en-GB.aff ${pkgdir}/usr/share/myspell/en-GB.aff || return 1
	install -D -m 644 en-GB.dic ${pkgdir}/usr/share/myspell/en-GB.dic || return 1
}
