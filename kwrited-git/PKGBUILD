# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=kwrited-git
pkgver=r243.6a6640f
pkgrel=1
pkgdesc='Kwrited'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kde/kde-workspace'
license=('LGPL')
depends=('kpty-git' 'kde4support-git')
makedepends=('extra-cmake-modules' 'git' 'kf5umbrella-git' 'kdoctools-git')
conflicts=('kwrited' 'kde-workspace<0')
provides=('kwrited')
source=('git://anongit.kde.org/kwrited.git')
md5sums=('SKIP')

pkgver() {
  cd kwrited
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  export XDG_DATA_DIRS="/opt/kf5/share:$XDG_DATA_DIRS"

  cd build
  cmake ../kwrited/${DIR} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
