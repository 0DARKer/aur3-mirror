pkgname=aurscripts
pkgver=1.1.5
pkgrel=1
arch=('any')
pkgdesc="Tools for more comfortable work with Arch User Repository (AUR)"
url="http://wiki.archlinux.org/index.php/AUR_User_Guidelines"
license=('GPL')
depends=('bash' 'gawk')
source=(aurdownload aurupdate aurcreate)
md5sums=('ded2ce1ee22a9f78148cf84b2e79fde0'
         '69d77402f3ce8710cd38eebe89d50702'
         'cc730786e593d0450b53db392f2148de')

build() {
  cd $srcdir
  install -d $pkgdir/usr/bin
  install -m 755 aurdownload aurupdate aurcreate $pkgdir/usr/bin/
}
