# $Id$
# Maintainer: Sebastien Binet <binet@lblbox>
pkgname=python-bento
pkgver=0.0.4
pkgrel=1
pkgdesc="Bento is a no-nonsense packaging tool solution for python softwares."
url="http://cournape.github.com/Bento/"
arch=('i686' 'x86_64')
license=('BSD')
depends=( 'python')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://github.com/cournape/Bento/tarball/v0.0.4/cournape-Bento-v0.0.4-0-gf80903b.tar.gz)
md5sums=('4aec3e24e3363a13ab8bc9c1d1932a54')

build() {
  cd $startdir/src/cournape-Bento-f80903b
  
  python setup.py build || return 1
  python setup.py install --optimize=1 --prefix=/usr --root=$startdir/pkg
}
