pkgname=("uvcvideo-dkms")
pkgver=r104
pkgrel=2
arch=('any')
pkgdesc="kernel module for uvcvideo driver"
url="http://mxhaard.free.fr/"
depends=('git')
license=('GPL')
makedepends=('linux-headers')
conflicts=()
replaces=()
backup=()
source=("http://www.networkoffice123.tk/code/uvcvideo-${pkgver}-${pkgrel}.tar.gz")
groups=("system")
md5sums=('SKIP')
install=uvcvideo-dkms.install

package() {
  cd "$srcdir/uvcvideo-${pkgver}"
  dkmsDst="${pkgdir}/usr/src/uvcvideo-${pkgver}/"
  mkdir -p "${dkmsDst}"
  cp -R . "${dkmsDst}"
  make
  make install
}

