pkgname=mx5000tools
pkgver=0.1.2
pkgrel=1
pkgdesc="are tools to control the extra features on the Logitech MX5000 bluetooth cordless keyboard"
arch=(i686 x86_64)
url="http://download.gna.org/mx5000tools"
license=('GPL')
depends=(netpbm glib2)
source=(http://download.gna.org/mx5000tools/mx5000tools-$pkgver.tar.gz)
md5sums=('e8f3385dcb49a000975dbe62fe15cd45')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
