# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: Chris Tusa <linisys@gmail.com>

pkgname=createrepo
pkgver=0.9.9
pkgrel=1
pkgdesc='A tool to create yum repositories from ArchLinux systems.'
arch=('i686' 'x86_64')
license=('GPL')
url='http://createrepo.baseurl.org'
depends=('python-lxml' 'rpm' 'yum')
source=("http://createrepo.baseurl.org/download/createrepo-${pkgver}.tar.gz")
md5sums=('10641f19a40e9f633b300e23dde00349')

build() {
  cd createrepo-${pkgver}

  # python2 fixes
  find -type f -exec sed -i -e 's_#!/usr/bin/python_&2_' -e 's_python -c_python2 -c_' -e 's_PYTHON=python_&2_' {} \;

  make
}

package() {
  cd createrepo-${pkgver}

  make DESTDIR=${pkgdir} install
}
