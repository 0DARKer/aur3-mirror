pkgname=mvim-git
pkgver=20130406
pkgrel=1
pkgdesc="A tool to rename files by using vim to edit their names."
arch=('any')
url="http://github.com/bouttier/mvim/"
license=('GPL')
groups=()
depends=('python')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(git+git://github.com/bouttier/mvim.git)
noextract=()
md5sums=('SKIP')

package() {
  cd "$srcdir/mvim"
  install -D -m 755 mvim "$pkgdir/usr/bin/mvim"
}
