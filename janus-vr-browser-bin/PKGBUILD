pkgname=janus-vr-browser-bin
pkgdesc='a 3D VR internet browser'
url='http://www.dgp.toronto.edu/~mccrae/projects/firebox/'
pkgver=2.17
pkgrel=1
arch=('i686' 'x86_64')
license=('MPL' 'GPL' 'LGPL')
source=("http://www.dgp.toronto.edu/~mccrae/projects/firebox/janusvr_binary_r21_7.zip" "janusvr.sh" "http://www.dgp.toronto.edu/~mccrae/projects/firebox/janus_logo5.jpg" "janusvr.desktop")
#source=("${_srcurl}/${_file}.tar.bz2" "${_srcurl}/${_file}.txt" 'firefox-nightly.desktop' 'firefox-nightly-safe.desktop' 'vendor.js')
depends=('alsa-lib' 'libxt' 'libnotify' 'mime-types' 'nss' 'gtk2' 'sqlite' 'dbus-glib')
makedepends=("imagemagick") #only for converting the icon

#pkgver() {
#}

package() {
  install -d "$pkgdir/opt"
  mv JanusVRBin/ "$pkgdir/opt/janusvr"
  chmod a+x "$pkgdir/opt/janusvr"/*.sh
  chmod a+x "$pkgdir/opt/janusvr/janusvr"
  chmod -R a+rX "$pkgdir/opt/janusvr"
  
  install -d "$pkgdir/usr/bin"
  install -m755 "$srcdir/janusvr.sh" "$pkgdir/usr/bin/janusvr"


  install -d "$pkgdir/usr/share/icons/"
  convert "$srcdir/janus_logo5.jpg" -resize 128x128 "$pkgdir/usr/share/icons/janusvr.png" # screw the aspect ratio


  install -d "$pkgdir/usr/share/applications"
  install "${srcdir}/janusvr.desktop" "${pkgdir}/usr/share/applications/janusvr.desktop"
}

md5sums=('0f9dbb0ab0c06820a8e0bbd69e3cfeab'
         '5dddfa6611540a560987a658ceade204'
         'caa1d06e46c684365cb8cddcac29ee21'
         'a8a2ce8e4dfa4e4e87a6af811b5627a4')
