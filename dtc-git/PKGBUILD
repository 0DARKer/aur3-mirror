# For ArchLinux by Joel Porquet

pkgname=dtc-git
pkgrel=1
pkgver=v1.4.0.r42.g6a76a9d
pkgdesc="Device Tree Compiler (git version)"
arch=('any')
license=('GPL2')
makedepends=('git')
url="http://jdl.com/software/"
md5sums=('SKIP')

source=("${pkgname}::git://git.kernel.org/pub/scm/utils/dtc/dtc.git")

pkgver() {
    cd ${pkgname}
    git describe --long | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
    cd ${pkgname}
    make
}

package() {
	cd ${pkgname}
    make INSTALL=$(which install) DESTDIR=${pkgdir} PREFIX=/usr install
}
