# Last changed: 2011-12-19 23:07:39 by ralf

pkgname=python2-greenlet
pkgver=0.3.2
pkgrel=1
pkgdesc="python coroutine library"
license=("MIT")
url="http://pypi.python.org/pypi/greenlet"
depends=('python2')
source=(http://pypi.python.org/packages/source/g/greenlet/greenlet-$pkgver.zip patch)
arch=('i686' 'x86_64')
md5sums=('96b99f659d466ce1c5b3d72bc25dddac'
	 '5e010aef89edd35d5f0f683e8a8e4c59')

build() {
  cd $startdir/src/greenlet-$pkgver
  patch -p1 <$startdir/patch
  /usr/bin/python2 setup.py build || return 1
  /usr/bin/python2 setup.py install --root=$startdir/pkg
}
