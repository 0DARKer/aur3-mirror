# Maintainer: Charles Bos <charlesbos1 AT gmail>

pkgname=xpathselect-bzr
pkgver=43
pkgrel=2
_bzrname=xpathselect
pkgdesc="A simple library that implements a subset of the XPath spec to allow selecting nodes in an object tree."
arch=('i686' 'x86_64')
url="https://launchpad.net/xpathselect"
license=('GPL')
makedepends=('bzr' 'cmake')
provides=('xpathselect=1.4)
source=("$_bzrname::bzr+http://bazaar.launchpad.net/~autopilot/$_bzrname/trunk/")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir"/$_bzrname
  bzr revno
}

build() {
  cd "$srcdir"/$_bzrname
  cmake -DCMAKE_INSTALL_PREFIX=/usr CMakeLists.txt
}

package() {
  cd "$srcdir"/$_bzrname
  make DESTDIR="$pkgdir" install
}



