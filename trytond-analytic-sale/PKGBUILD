# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-analytic-sale
_pkgname=trytond_analytic_sale
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The analytic_sale module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-analytic-account>=3.2' 'trytond-analytic-invoice>=3.2' 'trytond-sale>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("1a652eaa200b36f5a01fb31f6b04a1d3")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}