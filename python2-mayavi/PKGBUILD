# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-mayavi
pkgver=3.4.1
_githubtag=d113d31
pkgrel=1
pkgdesc="The Mayavi scientific data 3-dimensional visualizer"
arch=('any')
url="https://github.com/enthought/mayavi"
license=('BSD')
depends=('python2' 'ipython' 'vtk>=5' 'python2-numpy>=1.1' 'python-configobj'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui'
         'python2-apptools' 'python2-envisagecore' 'python2-envisageplugins')
makedepends=('python2-distribute' 'gcc>=3.4')
conflicts=('python-enthought-mayavi' 'python2-mayavi-git' 'python-ets-mayavi-svn')
options=(!emptydirs)

source=("https://github.com/enthought/mayavi/tarball/${pkgver}")
md5sums=('f9a01581b745dcbde747072394b189db')

build() {
  cd "$srcdir/enthought-mayavi-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

