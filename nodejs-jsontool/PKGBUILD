# Contributor: Trent Mick <trentm@gmail.com>
# Maintainer: trentm <trentm@gmail.com>
_npmname=jsontool
pkgname=nodejs-jsontool # All lowercase
pkgver=3.0.2
pkgrel=1
pkgdesc="a 'json' command for massaging JSON on the command line"
arch=(any)
url="http://github.com/trentm/json"
license=()
depends=(nodejs)
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(23509d6e602f1331cf0ec60cb77ddfa850d8797a)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
