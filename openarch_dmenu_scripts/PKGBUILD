# Contributor: Alexander Ovsyannikov <ovsinc@ya.ru>

pkgname=openarch_dmenu_scripts
pkgver=0.1
pkgrel=2
pkgdesc="Some wrapper scripts for dmenu"
arch=('any')
groups=('openarch_scripts')
url="http://ovsinc.narod.ru/"
license=('GPL')
depends=('dmenu' 'zenity' 'pmount' 'udisks')
source=('USB-HD_err.png' 'USB-HD.png' 'mount.sh' 'umount.sh' 'dmenu-bind.sh')

md5sums=('99e3f728b2cef46f635bfbab5cf1ae55'
         'f2da3fe40b088d7c114e9aed284d231e'
         'd6ca33f239b3b23175e25140a557debf'
         'fa28c2bb0632fbf65be876576ab9e09f'
         '15cfde80d1a286dff91bb2bfe4d88171')

build() {
	cd "${srcdir}"
	install -d -m755 "${pkgdir}"/usr/share/dmenu
	install -d -m755 "${pkgdir}"/usr/bin
	install -m644 "${srcdir}"/*.png "${pkgdir}"/usr/share/dmenu/
	install -m755 "${srcdir}"/*.sh "${pkgdir}"/usr/bin/
}
