# Maintainer: Alexander Ovsyannikov <ovsinc@ya.ru>
# Contributor: Alexander Ovsyannikov <ovsinc@ya.ru>

pkgname=openarch_dmenu_scripts
pkgver=0.2.1
pkgrel=2
pkgdesc="Some wrapper scripts for dmenu"
arch=('any')
groups=('openarch_scripts')
url="http://ovsinc.narod.ru/"
license=('GPL')
depends=('dmenu' 'zenity' 'pmount' 'udisks' 'libnotify')
source=('openarch_dmenu.tar.gz')


build() {
	cd "${srcdir}"
	install -d -m755 "${pkgdir}"/usr/share/dmenu
	install -d -m755 "${pkgdir}"/usr/bin
	install -m644 "${srcdir}"/dmenu/icons/* "${pkgdir}"/usr/share/dmenu/
	install -m755 "${srcdir}"/dmenu/scripts/* "${pkgdir}"/usr/bin/
}
md5sums=('303b9611803d3ef923453260570ee3b8')
