# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-cmdline-complete
pkgver=1.1.3
_scriptid=8969
pkgrel=2
pkgdesc="complete command-line (: / etc.) from the current file"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=2222"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(cmdline_complete.vim::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('81cdaea478d011f9766943ce01879607'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/cmdline_complete.vim ${pkgdir}/usr/share/vim/plugin/cmdline_complete.vim || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
