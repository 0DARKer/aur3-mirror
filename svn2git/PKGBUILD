# Contributor: Techlive Zheng <techlivezheng@gmail.com>

pkgname=svn2git
pkgver=1.0.8
pkgrel=1
pkgdesc="A fast-import based converter for an svn repo to git repos."
arch=('i686' 'x86_64')
url="http://gitorious.org/svn2git"
license=('GPLv2')
depends=('qt4' 'git' 'subversion')
optdepends=('svneverever-git: for collecting path entries across SVN history')
source=($pkgname-$pkgver.tar.gz::http://gitorious.org/svn2git/svn2git/archive-tarball/$pkgver)
md5sums=('4a5944f8171d410e2150be6fcb96b7f8')


build() {
  cd "$srcdir/$pkgname-$pkgname"

  qmake-qt4 "INCLUDEPATH+=/usr/include/apr-1/"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgname"

  install -m755 -D -s svn-all-fast-export "$pkgdir/usr/bin/$pkgname"
  install -m755 -d "$pkgdir/usr/share/$pkgname/"
  install -m644 -t "$pkgdir/usr/share/$pkgname/" samples/*
}
