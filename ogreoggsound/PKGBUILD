# Maintainer:	Jesse Jaara	<gmail: jesse.jaara>

pkgname=ogreoggsound
pkgver=1.21
pkgrel=1
pkgdesc="A wrapper around OpenAL to quickly add 2D/3D audio to applications."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/ogreoggsound/"
license=('LGPL')
depends=('ogre' 'openal' 'libvorbis')
conflicts=('ogreoggsound-svn')
source=(http://sourceforge.net/projects/ogreoggsound/files/OgreOggSound-Cthugha/ogreoggsound-v${pkgver}.zip/download)

build() {
  cd "$srcdir/$pkgname"

  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}


package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
md5sums=('9d2e3ef46a6b6e9b3d2eb2dab3fae2ff')
