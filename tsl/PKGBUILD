# Maintainer: megadriver <megadriver at gmx dot com>

pkgname=tsl
pkgver=0.37
pkgrel=1
pkgdesc="The Slimy Lichmummy, a fantasy/cyberpunk roguelike"
arch=('i686' 'x86_64')
url="http://www.happyponyland.net/roguelike.php"
license=("unknown")
#depends=('ncurses')
depends=('sdl')
source=("http://www.happyponyland.net/files/$pkgname-$pkgver.tar.gz" $pkgname.sh)
md5sums=('23a5bbdd9c3969a1c12bc66de838fe97' '2e3e2c0433e3a79c39bb87422ea1695a')

build() {
  cd $srcdir/$pkgname-$pkgver
  #./build_console.sh
  ./build_sdl.sh
}

package() {
  cd $srcdir/$pkgname-$pkgver
  mkdir -p $pkgdir/opt/$pkgname
  cp $pkgname CHANGES README tileset.bmp tsl_conf* $pkgdir/opt/$pkgname
  install -D -m755 $srcdir/$pkgname.sh $pkgdir/usr/bin/$pkgname
}

