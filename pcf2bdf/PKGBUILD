# Maintainer: Schnouki <thomas.jost@gmail.com>
# Contributor: cs-cam - me.at.camdaniel.com
pkgname=pcf2bdf
pkgver=1.04
pkgrel=2
pkgdesc="Convert X font from Portable Compiled Format to Bitmap Distribution Format"
arch=('i686' 'x86_64')
url="http://www.tsg.ne.jp/GANA/S/pcf2bdf/"
license=('custom:X11')
depends=('gcc-libs')
source=(http://www.tsg.ne.jp/GANA/S/pcf2bdf/$pkgname-$pkgver.tgz)
md5sums=('8ce3b6a57491c67ef0cbf2f5413451f3')
sha1sums=('6fdcc10132e27d3c26ff7e4be541332ee5d4e927')

build () {
  cd "$srcdir"
  install -Dm644 README.txt "$pkgdir/usr/share/licenses/$pkgname/README.txt" || return 1
  
  sed -e "s|= gcc|= g++|g" -i Makefile.gcc || return 1
  make -f Makefile.gcc PREFIX="$pkgdir/usr" install || return 1
  
  mkdir -p "$pkgdir/usr/share" || return 1
  mv "$pkgdir/usr/man" "$pkgdir/usr/share/man"
}
