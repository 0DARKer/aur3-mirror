pkgname=ruby-ntlm-http
_gemname=ntlm-http
pkgver=0.1.1
pkgrel=1
pkgdesc="Provides NTLM authentication over HTTP for Ruby."
arch=('any')
url="http://www.mindflowsolutions.net/"
license=('MIT')
depends=('ruby')
makedepends=('ruby')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('b505e299b6d4a34d54d57b0b24134be2')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -f -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
