# Contributor: Sara <sara at archlinux dot us>

pkgname=minmix
pkgver=0.1
pkgrel=1
pkgdesc="A small OSS mixer"
arch=('i686' 'x86_64')
license=('GPL')
optdepends=('oss: sound mixing')
url="http://litcave.rudi.ir"
source=(http://litcave.rudi.ir/${pkgname}.tar.gz)
md5sums=('6bde7bf8da3f7b033228e877b3d255f4')

build(){
  cd "${srcdir}/${pkgname}"
  msg "Starting make..."
  make
}

package() {
  cd "${srcdir}/${pkgname}"
  install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}

# vim:set ts=2 sw=2 et:
