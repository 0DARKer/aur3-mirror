# Contributor: Andreas Baumann <abaumann at yahoo dot com>

pkgname=arabica
pkgver=201011
pkgrel=1
pkgdesc="An XML and HTML Processing Toolkit"
arch=('i686' 'x86_64')
url="http://www.jezuk.co.uk/cgi-bin/view/arabica"
license=('GPL')
makedepends=('expat' 'xerces-c' 'libxml2' 'libxslt' 'boost')
source=(http://switch.dl.sourceforge.net/sourceforge/${pkgname}/${pkgname}-2010-November.tar.bz2)
md5sums=('5fd17071b4c012c4e87ed6f6729690ad')

build() {
  cd ${srcdir}/${pkgname}-2010-November

  ./configure || return 1

  make || return 1

  make install DESTDIR=$pkgdir prefix=/usr || return 1
}
