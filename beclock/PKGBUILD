pkgname=beclock
_realname=beclock-kwin-fx
pkgver=0.13a
_upstream_ver=13a
pkgrel=1
pkgdesc="A simple clock, implemented as KWin Effect"
arch=('i686' 'x86_64')
url="http://kde-look.org/content/show.php?content=117542&forumpage=0"
depends=('kdebase-workspace>=4.4.0')
makedepends=('cmake' 'automoc4' 'gcc')
source=("http://kde-look.org/CONTENT/content-files/117542-${_realname}-${_upstream_ver}.txz")
license=('GPL')
install=('beclock.install')

build()

{
        cd $srcdir/${_realname}
        cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` -DCMAKE_BUILD_TYPE=Release .
        make || return 1
        make DESTDIR=$pkgdir install
}



md5sums=('2188d13c1fcc6acca06986d9ec1043b7')
