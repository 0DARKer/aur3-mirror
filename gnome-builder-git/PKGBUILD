# Maintainer: Tim Jester-Pfadt <t.jp<at>gmx.de>

pkgname=gnome-builder-git
pkgver=2578.73a30a1
pkgrel=2
pkgdesc="Builder, a new IDE for Gnome"
arch=('i686' 'x86_64')
url="https://wiki.gnome.org/Apps/Builder"
license=(GPL)
conflicts=(gnome-builder)
depends=('gtksourceview3' 'llvm' 'gtk3' 'gobject-introspection' 'intltool' 'gsettings-desktop-schemas' 'dconf' 'devhelp' 'glade' 'webkit2gtk' 'gtk-doc' 'clang' 'gjs' 'libgit2-glib')
makedepends=(gnome-common)
install=gnome-builder.install
source=('git+git://git.gnome.org/gnome-builder')
sha256sums=('SKIP')

build() {
  cd "$srcdir"/gnome-builder
  #autoreconf -fi
  ./autogen.sh --prefix=/usr --disable-schemas-compile
  make
}

package() {
  cd "$srcdir"/gnome-builder
  make DESTDIR="$pkgdir" install
}

pkgver() {
  cd "$srcdir"/gnome-builder
  echo $(git rev-list --count master).$(git rev-parse --short master)
}
