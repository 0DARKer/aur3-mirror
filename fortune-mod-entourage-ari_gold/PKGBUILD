# Contributor: Mike Redd <mredd -a.t- 0tue0.com>

pkgname=fortune-mod-entourage-ari_gold
pkgver=0.2
pkgrel=2
pkgdesc="Ari Gold (Entourage) [HBO] fortune cookie file"
url="http://fortunemod.tehspork.com"
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('b588c90a0efccaed247dfc9c0b8d7da3')

build() {
    mkdir $srcdir/$pkgname-$pkgver/
    xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
    mv -i $srcdir/entourage-ari $srcdir/$pkgname-$pkgver/
    strfile $srcdir/$pkgname-$pkgver/entourage-ari
    install -d $pkgdir/usr/share/fortune || return 1
    install -m 644  $srcdir/$pkgname-$pkgver/entourage-ari* $pkgdir/usr/share/fortune \
    || return 1
}

