# Maintainer: GI_Jack <iamjacksemail@hackermail.com>
# Based on PKGBUILD firefox-extension-httpseverywhere

_plugin_name=cryptocat
_plugin_version=2.1.23
pkgdesc="Web based encrypted(OTR) IM client for Firefox"
license=('GNU Affero')

pkgname=firefox-extension-$_plugin_name
pkgver=$_plugin_version
pkgrel=1
arch=('any')
url="http://crypto.cat"
depends=("firefox")
source=("https://addons.cdn.mozilla.net/_files/398258/cryptocat-${_plugin_version}-fx.xpi")
md5sums=('8e72bb5b65bd0720d7dd2423bf68a751')
sha1sums=('8445b3b32eac5102aa2fd1d27cc3d5f2e2cf48a0')
package(){
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  install -d $dstdir
  cp -r * $dstdir
  rm $dstdir/$_plugin_name-$pkgver-fx.xpi
  chmod -R 755 $dstdir
}
