pkgname=python-nltk-git
pkgver=20120212
pkgrel=1
pkgdesc='Software for natural language processing'
arch=('any')
url='http://www.nltk.org/'
license=('APACHE')
depends=('python-yaml')
optdepends=('nltk-data: test data'
            'python-numpy: used for calculations')
            #'python2-matplotlib: used for plotting')
provides=('python-nltk')

_gitroot="git://github.com/nltk/nltk.git"
_gitname="nltk"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d $_gitname ]] ; then
    ( cd "$_gitname" && git pull origin; )
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname" --branch nltk-py3k
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  python setup-distutils.py build
}

package() {
  cd "$srcdir/$_gitname-build"

  python setup-distutils.py install --root=${pkgdir} --optimize=1
}
