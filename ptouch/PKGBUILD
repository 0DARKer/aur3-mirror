pkgname=ptouch
pkgver=1.2
pkgrel=1
pkgdesc="Command line tools to print labels on Brother P-touch printers"
arch=('i686' 'x86_64')
url="http://mockmoon-cybernetics.ch/computer/p-touch2430pc/"
license=('GPL2')
depends=('libusb>=1.0' 'gd')
options=('')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.txz)
md5sums=('e376f78949645ea486277000e3568c33')

build() {
	cd $srcdir/$pkgname
	make
}
package() {
	cd $srcdir/$pkgname
	install -m 755 -d $pkgdir/usr/bin
	make DESTDIR=$pkgdir install
#	install -m 755 -D "ptouch-printpng" "$pkgdir/usr/bin/ptouch-printpng"
#	install -m 755 -D "ptouch-printtext" "$pkgdir/usr/bin/ptouch-printtext"
}
