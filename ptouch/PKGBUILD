# Contributor: Dominic Radermacher <dominic.radermacher@gmail.com>
pkgname=ptouch
pkgver=1.2.1
pkgrel=1
pkgdesc="Command line tools to print labels on Brother P-touch printers like PT-2430PC"
arch=('i686' 'x86_64')
url="http://mockmoon-cybernetics.ch/computer/p-touch2430pc/"
license=('GPL2')
depends=('libusb>=1.0' 'gd')
options=('')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.txz)
sha256sums=('3e4681452e2eeb75d54d84e0f63391e2397a26ebd983e6c342cdd239d05fbee7')

build() {
	cd $srcdir/$pkgname
	make
}
package() {
	cd $srcdir/$pkgname
	make DESTDIR=$pkgdir install
}
