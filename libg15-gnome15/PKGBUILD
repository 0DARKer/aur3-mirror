pkgname=libg15-gnome15
pkgver=1.3.0
pkgrel=1
pkgdesc="Customized version of libG15 for use with Gnome15 software"
url="http://www.gnome15.org"
arch=('i686' 'x86_64')
license=('GPL')
conflicts=('libg15')
provides=('libg15')
source=('http://www.gnome15.org/downloads/Gnome15/Optional/libg15-1.3.0-with-gnome15-enhancements.tar.gz')
md5sums=('54a69d8131b150c7b0c235584d0efeba')

build () {

	cd $srcdir/libg15-1.3.0
	
	./configure prefix=$pkgdir/usr --disable-static
	make
	make install
}
