# Maintainer: Jonathan Hudson <jh+arch@daria.co.uk>

pkgname=omxplayer-git
pkgver=20120604
pkgrel=1
pkgdesc="omxplayer is a command line media player for the RaspberryPi"
arch=(arm)
url="https://github.com/huceke/omxplayer.git"
license=(GPL2)
depends=(ffmpeg pcre rtmpdump) 
makedepends=(git)
provides=(omxplayer)
conflicts=(omxplayer omxplayer-bin)
source=(omxplayer.patch)
md5sums=('aec84c4e70be7b5019973b4ce035df95')
_gitroot="https://github.com/huceke/omxplayer.git"
_gitname="omxplayer"

build() {
  cd "$srcdir"

  if [ -d $_gitname ] ; then
    ( cd $_gitname && git pull ) || warning "Git pull failed!"
  else
    git clone $_gitroot 
  fi
  cd $_gitname
  patch -Np1 -i ../omxplayer.patch
  make
}

package() {
  cd "$srcdir/$_gitname"

  make DESTDIR="$pkgdir" install
}
