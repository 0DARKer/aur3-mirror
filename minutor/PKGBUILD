# Contributor: David J. Haines <d h a i n e s AT g m a i l DOT c o m>

pkgname=minutor
pkgver=1.5.0
pkgrel=2
pkgdesc="A minimalistic map generator for minecraft."
arch=('i686' 'x86_64')
url="http://seancode.com/minutor/"
license=('unknown')
depends=(gtk2)
install=minutor.install
source=(http://seancode.com/minutor/1.5/${pkgname}_${pkgver}.tar.gz minutor.patch)
md5sums=('6d3ade04e4810450a2ef465cefa9c7d0'
         'cc105b80af29c9b992881579a210574a')
         

build() {
	cd "$srcdir/$pkgname"
	patch -p1 -i ${srcdir}/${pkgname}.patch
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir/" install
}
