# Contributor: David J. Haines <d h a i n e s AT g m a i l DOT c o m>

pkgname=minutor
pkgver=1.1
pkgrel=2
pkgdesc="A minimalistic map generator for minecraft."
arch=(i686 x86_64)
url="http://seancode.com/minutor/"
license=('unknown')
depends=(gtk2)
source=(http://seancode.com/minutor/${pkgver}/${pkgname}_${pkgver}.tar.gz)
md5sums=('886837891f4ade0152dd9f639f47bb08')

build() {
	cd "$srcdir/$pkgname"
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir/" install
}

post_install() {
	echo "Please run 'glib-compile-schemas /usr/share/glib-2.0/schemas' as root to make the new schema work."
	echo "Minutor will not work without that."
}
