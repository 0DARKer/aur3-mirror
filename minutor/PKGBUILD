# Maintainer: Matz Radloff <matzradloff@googlemail.com>

pkgname=minutor
pkgver=0.9
pkgrel=5
pkgdesc="A minimalistic map generator for minecraft."
arch=(i686 x86_64)
url="http://seancode.com/minutor/"
license=('unknown')
depends=(gtk2 libpng)
source=(http://seancode.com/minutor/${pkgver}/${pkgname}-${pkgver}.${pkgrel}.tar.gz)
md5sums=('341b2ab86572ad0cee3971deacfb5e70')

build() {
  cd "$srcdir/$pkgname"

  make
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
}

post_install() {
  echo "Please run 'glib-compile-schemas /usr/share/glib-2.0/schemas' as root to make the new schema work."
  echo "Minutor will not work without that."
}

# vim:set ts=2 sw=2 et:
