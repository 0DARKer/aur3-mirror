pkgname=ttf-adobe-fonts
pkgver=10
pkgrel=1
arch=('any')
pkgdesc="Fonts from Adobe Acrobat Reader X including Myriad Pro, Myriad CAD, Minion Pro, Courier Std and Adobe Pi Std"
url="http://www.adobe.com/products/reader.html"
source=("http://ardownload.adobe.com/pub/adobe/reader/win/10.x/10.0.1/en_US/AdbeRdr1001_en_US.exe")
md5sums=('2751a9857f2f7584f831780bc4d69966')
makedepends=('p7zip')
conflicts=('acroread-fonts-systemwide')
install=${pkgname}.install
license=('custom')

package() {
    cd "$srcdir"
	7z -y e AdbeRdr1001_en_US.exe
	7z -y -o"$pkgdir/usr/share/fonts/adobe" -ir\!*.otf e Data1.cab
        chmod -R go+rX "$pkgdir"
}
