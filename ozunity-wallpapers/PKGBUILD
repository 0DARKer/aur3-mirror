# $Id$
# Maintainer: Ryan Owens <RyanOwens@linux.com>

pkgname=ozunity-wallpapers
pkgver=0.1
pkgrel=2
pkgdesc="Background images and Data for Oz Unity (GNOME)"
arch=(any)
makedepends=('intltool')
url="http://www.ultimateeditionoz.com"
license=('GPL')
provides=('gnome-backgrounds')
conflicts=('gnome-backgrounds')
source=($pkgname-$pkgver.tar.xz)
sha256sums=('5b5fbf545b739f7d8bf2f4d084acec9ee6228a5070d1245aab970e7ee25828e3')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
