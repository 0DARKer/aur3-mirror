# Maintainer: DonVla <donvla@users.sourceforge.net>

pkgname=jack-rack
pkgver=20120729
pkgrel=1
pkgdesc="Effects rack for JACK"
arch=(i686 x86_64)
url="http://jack-rack.sourceforge.net/"
license=('GPL')
depends=('lash' 'liblrdf')
makedepends=('git')
_gitroot="git://jack-rack.git.sourceforge.net/gitroot/jack-rack/jack-rack"
_gitname="jack-rack"
md5sums=()
sha256sums=()

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  ./autogen.sh
  ./configure --prefix=/usr --disable-gnome --enable-lash --enable-lrdf
  make LDFLAGS='-ldl -lm'
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
  sed -i 's/#!\/usr\/bin\/python/#!\/usr\/bin\/python2/' "${pkgdir}/usr/bin/ecarack"
}
