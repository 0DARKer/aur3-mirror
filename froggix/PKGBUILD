# Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=froggix
pkgver=0.1
pkgrel=1
pkgdesc='a clone of the classic arcade game "Frogger"'
arch=('any')
url="http://sourceforge.net/projects/froggix/"
license=('GPL3' 'CCPL' 'custom')
depends=('python-pygame')
source=(http://downloads.sourceforge.net/$pkgname/Froggix.zip)
md5sums=('4f4daff7f20bb4b29edf7124de4cdea0')

build() {
  cd $pkgname

  sed 's|data/|/usr/share/froggix/data/|g;1i#!/usr/bin/python' -i froggix.py

  install -Dm755 froggix.py "$pkgdir"/usr/bin/froggix
  mkdir -p "$pkgdir"/usr/share/froggix
  cp -rf data/ "$pkgdir"/usr/share/froggix/

  install -Dm644 Credits_and_Licenses \
	"$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:
