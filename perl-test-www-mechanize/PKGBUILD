pkgname='perl-test-www-mechanize'
pkgver='1.30'
pkgrel='1'
pkgdesc="Testing-specific WWW::Mechanize subclass"
arch=('any')
url='http://search.cpan.org/dist/Test-WWW-Mechanize'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-carp-assert-more' 'perl-html-tree' 'perl-http-server-simple>=0.42' 'perl-test-longstring>=0.12' 'perl-uri' 'perl-www-mechanize>=1.24')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/P/PE/PETDANCE/Test-WWW-Mechanize-1.30.tar.gz')
