# Maintainer: Adam Reichold <adamreichold@myopera.com>
pkgname=qpdfview
pkgver=0.2beta2
pkgrel=1
pkgdesc='qpdfview is a tabbed PDF viewer using the poppler library.'
url='http://launchpad.net/qpdfview'
arch=('i686' 'x86_64')
license=('GPL3')
depends=('qt' 'poppler-qt')
makedepends=()
source=("http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('47fcabb5b9bd543a9e3dc777ac802dc9')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg 'Building program...'

  qmake
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 "qpdfview" "$pkgdir/usr/bin/qpdfview"
  strip "$pkgdir/usr/bin/qpdfview"

  install -Dm644 "miscellaneous/qpdfview.desktop" "$pkgdir/usr/share/applications/qpdfview.desktop"
  install -Dm644 "icons/qpdfview.svg" "$pkgdir/usr/share/pixmaps/qpdfview.svg"
}
