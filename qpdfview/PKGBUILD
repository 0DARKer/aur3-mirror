# Maintainer: Adam Reichold <adamreichold@myopera.com>
pkgname=qpdfview
pkgver=0.2.2
pkgrel=2
pkgdesc='A tabbed PDF viewer using the poppler library.'
arch=('i686' 'x86_64')
url='http://launchpad.net/qpdfview'
license=('GPL3')
depends=('qt' 'poppler-qt')
source=("http://launchpad.net/$pkgname/0.2.x/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('7369c73d173fe50137e63b170f19c3ba')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg 'Building program...'

  qmake
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make INSTALL_ROOT=$pkgdir install
}
