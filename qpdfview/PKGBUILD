# Maintainer: Adam Reichold <adamreichold@myopera.com>
pkgname=qpdfview
pkgver=0.1.1
pkgrel=2
pkgdesc='qpdfview is a tabbed PDF viewer using the poppler library.'
url='http://launchpad.net/qpdfview'
arch=('i686' 'x86_64')
license=('GPL3')
depends=('qt' 'poppler-qt')
makedepends=()
optdepends=('gnome-icon-theme: to provide the icons used in the interface')
source=("http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('219075412121c3b627e9d7ff5ae3b9a8')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg 'Building program...'

  qmake
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 "qpdfview" "$pkgdir/usr/bin/qpdfview"
  strip "$pkgdir/usr/bin/qpdfview"

  install -Dm644 "qpdfview.desktop" "$pkgdir/usr/share/applications/qpdfview.desktop"

  install -Dm644 "qpdfview.svg" "$pkgdir/usr/share/qpdfview/qpdfview.svg"
  install -Dm644 "qpdfview_de.qm" "$pkgdir/usr/share/qpdfview/qpdfview_de.qm"
}
