refresh_depmod()
{
    echo "updating kernel modules..."
	KERNEL_VERSION='2.6.37-bfs'
    depmod $KERNEL_VERSION
}

# arg 1:  the new package version
post_install()
{
    refresh_depmod
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade()
{
    refresh_depmod
}

# arg 1:  the old package version
post_remove()
{
    refresh_depmod
}

op=$1
shift

$op $*
