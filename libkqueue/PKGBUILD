pkgname=libkqueue
pkgver=1.0.6
pkgrel=3
pkgdesc="libkqueue is a portable userspace implementation of the kqueue kernel event notification mechanism"
url="http://sourceforge.net/p/libkqueue/wiki/Home/"
arch=('i686' 'x86_64')
license=('BSD')
depends=('glibc' 'linux-api-headers')
makedepends=('gcc')
options=('!libtool')
source=(http://downloads.sourceforge.net/project/libkqueue/libkqueue-1.0/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  CFLAGS='-fPIC -I./include -I./src/common -Wall -Werror' ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

md5sums=('5aed2744982d0c1ed79055fa37560090')
