pkgname=libkqueue
pkgver=2.0.1
pkgrel=1
pkgdesc="libkqueue is a portable userspace implementation of the kqueue kernel event notification mechanism"
url="http://sourceforge.net/p/libkqueue/wiki/Home/"
arch=('i686' 'x86_64')
license=('BSD')
depends=('glibc' 'linux-api-headers')
makedepends=('gcc')
options=('!libtool')
source=(http://downloads.sourceforge.net/project/libkqueue/libkqueue-2.0/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  CFLAGS='-fPIC -I./include -I./src/common -Wall -Werror' ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

md5sums=('3d939aa5fa83a870aee71f2181b22994')
