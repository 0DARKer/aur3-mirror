#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=quvi-git
pkgver=20130112
pkgrel=1
pkgdesc="Command line tool for parsing flash media stream URLs. (GIT version)"
arch=('i686' 'x86_64')
url="http://quvi.sourceforge.net/"
license=('custom:LGPLv2.1+')
depends=('libquvi-git')
makedepends=('git' 'gengetopt')
provides=('quvi')
conflicts=('quvi')

_gitroot="git://repo.or.cz/quvi-tool.git"
_gitname="quvi"

build() {
  cd "${srcdir}"

  msg "Connecting to GIT server..."

  if [ -d "${_gitname}" ] ; then
    cd "${_gitname}" && git pull --depth=1
  else
    git clone --depth=1 "${_gitroot}" "${_gitname}"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -fr "${srcdir}/${_gitname}-build"
  cp -R "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  sed '/AC_PROG_CC/s|$|\nAM_PROG_CC_C_O|g' -i configure.ac

  sh autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}" install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/license"
}
