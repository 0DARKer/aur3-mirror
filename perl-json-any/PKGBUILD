# CPAN Name  : JSON-Any
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
pkgname='perl-json-any'
pkgver='1.22'
pkgrel='2'
pkgdesc="Wrapper Class for the various JSON classes."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-json>=2.02' 'perl-yaml-syck')
url='http://search.cpan.org/dist/JSON-Any'
source=('http://search.cpan.org/CPAN/authors/id/P/PE/PERIGRIN/JSON-Any-1.22.tar.gz')
md5sums=('c576a6765c310ad36135e2c090eb0be7')

build() {
  DIST_DIR="${srcdir}/JSON-Any-1.22"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&make test &&
    make DESTDIR="$pkgdir" install;  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

