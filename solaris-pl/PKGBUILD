# Maintainer: phlowx <phlowx[at]googlemail.com>
pkgname=solaris-pl
pkgver=0.5.2
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Solaris Porting Layer"
makedepends=('kernel26-headers')
url="http://github.com/behlendorf/spl"
source=(https://github.com/downloads/behlendorf/spl/spl-$pkgver.tar.gz)
md5sums=('64c06dc7911a575aa8babc92440dceca')
install=solaris-pl.install
license=('GPL')
build() {
  cd $srcdir/spl-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
