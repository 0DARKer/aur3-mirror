# Maintainer: phlowx <phlowx[at]googlemail.com>
pkgname=solaris-pl
pkgver=0.6.0rc4
_dlver=0.6.0-rc4
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Solaris Porting Layer"
makedepends=('kernel26-headers')
url="http://github.com/behlendorf/spl"
source=(https://github.com/downloads/behlendorf/spl/spl-$_dlver.tar.gz)
md5sums=('b1deaf2f436a8c216f4ac162134f8e16')
install=solaris-pl.install
license=('GPL')
build() {
  echo $srcdir
  echo $pkgdir
  cd $srcdir/spl-$_dlver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
