# Contributor: Zarra <zarraxx@gmail.com>

pkgname=dbus-c++
pkgver=0.6.0_pre
pkgrel=1
pkgdesc="dbus-c++ attempts to provide a C++ API for D-BUS"
url="http://sourceforge.net/projects/dbus-cplusplus/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('dbus>=1.2.0' 'glib2')
makedepends=('autoconf' 'automake')
source=("http://files.ouranos.be/${pkgname}-${pkgver}.tar.gz")
md5sums=('815da29d36e9431c93060ec0a54f29bd')
options=('!libtool')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./autogen.sh --prefix=/usr --disable-static --enable-glib
    make
    make DESTDIR=${pkgdir} install
}
