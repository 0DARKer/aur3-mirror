# Contributor: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=stardict-duden
pkgver=2.4.2
pkgrel=2
pkgdesc="Duden dictionary for StarDict"
arch=('i686' 'x86_64')
url="http://stardict.sourceforge.net/"
license=('unknown')
depends=('stardict')
source=(http://downloads.sourceforge.net/stardict/$pkgname-$pkgver.tar.bz2)

md5sums=('b1794c5c1c0e96a23871545217a558a5')

build() {
  cd "${srcdir}/$pkgname-$pkgver"

  install -d "${pkgdir}/usr/share/stardict/dic" ||return 1
  install -m 644 duden.dict.dz duden.idx duden.ifo "${pkgdir}/usr/share/stardict/dic/" ||return 1
}
