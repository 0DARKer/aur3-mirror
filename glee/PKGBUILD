pkgname=glee
pkgver=5.4
pkgrel=2
pkgdesc="Free cross-platform extension loading library for OpenGL."
arch=('i686' 'x86_64')
url="http://elf-stone.com/glee.php"
license=('BSD')
depends=(libgl)
makedepends=()
optdepends=()
options=()
install=
source=(http://elf-stone.com/getfile.php?title=GleeSrcTar)

build() {
#  cd "$srcdir/$pkgname-$pkgver"

  CXXFLAGS="$CXXFLAGS -fPIC" ./configure --prefix=/usr
  make || return 1
  mkdir -p $pkgdir/usr/lib
  cp $srcdir/libGLee.so $pkgdir/usr/lib
  mkdir -p $pkgdir/usr/include/GL
  cp $srcdir/GLee.h $pkgdir/usr/include/GL/
}

# vim:set ts=2 sw=2 et:
md5sums=('0bd03db136dbc075488b6c6e83f326ae')
