# Maintainer: sylvain alborini sylvain.alborini@gmail.com

pkgname=artevideos
pkgver=20110612
pkgrel=1
pkgdesc="A script to play/record video from arte VIDEOS catch-up TV site"
arch=('any')
url="https://github.com/tindzk/arte-7.py"
license=('custom:WTFPL')
depends=('python2' 'python-beautifulsoup' 'rtmpdump')
makedepends=('git')
optdepends=('mplayer' 'vlc' 'xine-ui' 'totem')
source=()
md5sums=()

_gitroot="https://github.com/tindzk/arte-7.py.git"
_gitname="arte-7.py"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server.... $srcdir"

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
  install  -D -m755 "${srcdir}"/$_gitname/arte+7.py ${pkgdir}/usr/bin/arteVIDEOS || return 1 
  mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"

  echo "# DO WHAT THE FUCK YOU WANT TO PUBLIC LICENSE
# Version 2, December 2004
#
# Copyright (C) 2010 solsTiCe d'Hiver <solstice.dhiver@gmail.com>
#
# Everyone is permitted to copy and distribute verbatim or modified
# copies of this license document, and changing it is allowed as long
# as the name is changed.
#
# DO WHAT THE FUCK YOU WANT TO PUBLIC LICENSE
# TERMS AND CONDITIONS FOR COPYING, DISTRIBUTION AND MODIFICATION
#
# 0. You just DO WHAT THE FUCK YOU WANT TO.
" >> ${pkgdir}/usr/share/licenses/${pkgname}/COPYING || return 1 



} 
