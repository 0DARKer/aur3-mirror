# Maintainer: sylvain alborini sylvain.alborini@gmail.com

pkgname=artevideos
pkgver=20110324
pkgrel=1
pkgdesc="A script to play/record video from arte VIDEOS catch-up TV site"
arch=('any')
url="https://github.com/solsticedhiver/arteVIDEOS"
license=('custom:WTFPL')
depends=('python2' 'python-beautifulsoup' 'rtmpdump')
makedepends=('git')
optdepends=('mplayer' 'vlc' 'xine-ui' 'totem')
source=()
md5sums=()

_gitroot="https://github.com/solsticedhiver/arteVIDEOS.git"
_gitname="arteVIDEOS"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
  install  -D -m755 "${srcdir}"/$_gitname/arteVIDEOS.py ${srcdir}/usr/bin/arteVIDEOS || return 1 
  install  -D -m755 "${srcdir}"/$_gitname/COPYING ${srcdir}/usr/share/licenses/${pkgname}/COPYING || return 1 
} 
