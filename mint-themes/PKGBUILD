# Maintainer: Daniel Renninghoff

pkgname=mint-themes
pkgver=1.1.7
pkgrel=1
pkgdesc="The newest Mint-X theme, works with gtk 3.6."
arch=('any')
url="http://packages.linuxmint.com/pool/main/m/mint-themes"
license=('GPL')
depends=()
optdepends=('gtk-engine-murrine: for the GTK2 theme'
            'mint-x-icons: Mint icon theme')
conflicts=('mint-x-theme')
source=("${url}/${pkgname}_${pkgver}.tar.gz")
md5sums=('a9d1526111188d54c98a0382e1edb80c')

build() {
  cd "$srcdir/${pkgname}"
  cp -R usr $pkgdir/
}
# vim:syntax=sh
