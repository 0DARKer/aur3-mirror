# Maintainer: SahibBommelig <sahib@online.de>
# Contributor: SanskritFritz (gmail)
# rmlint PKBUILD for ArchLinux 
pkgname=rmlint-git
_gitname="rmlint"
pkgver=2013.04.01
pkgrel=1
epoch=1
pkgdesc="Tool to remove duplicates and other lint, being much faster than fdupes"
arch=('i686' 'x86_64')
depends=(glibc)
provides=('rmlint')
conflicts=('rmlint')
makedepends=('git')
license=('GPL3')
url=("https://github.com/sahib/rmlint")
source=("$_gitname::git://github.com/sahib/rmlint.git")
md5sums=('SKIP')

pkgver() {
    cd "$_gitname"
    git log -1 --format="%cd" --date=short | sed 's|-|.|g'
}

build() 
{
    cd "${srcdir}/${_gitname}"
    make
}

package() {
    cd "$srcdir/${_gitname}"
    make DESTDIR=$pkgdir install
}

