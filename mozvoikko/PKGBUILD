pkgname=mozvoikko
pkgver=2.0
pkgrel=4
pkgdesc="Finnish spell-checker extension for Firefox using Voikko"
arch=('any')
url="http://voikko.sourceforge.net"
license=('GPL2')
depends=('libvoikko')
optdepends=('firefox<=10.0a1' 'thunderbird<=10.0a1' 'seamonkey=2.6')
source=("http://downloads.sourceforge.net/voikko/${pkgname}-${pkgver}.tar.gz")

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  sed -e 's|9.0a1|10.0a1|' \
      -e 's|2.6a1|2.6|'    \
      -i install.rdf

   _UUID="{b676e3ff-cda7-4e0c-b2b8-74e4bb40a67a}"

  mkdir -p "${pkgdir}/usr/lib/firefox/extensions/${_UUID}"
  mkdir -p "${pkgdir}/usr/lib/thunderbird/extensions/"
  mkdir -p "${pkgdir}/usr/lib/seamonkey-2.6/extensions/"

  cp -r * "${pkgdir}/usr/lib/firefox/extensions/${_UUID}/"
  ln -s "${pkgdir}/usr/lib/firefox/extensions/${_UUID}" "${pkgdir}/usr/lib/thunderbird/extensions/${_UUID}"
  ln -s "${pkgdir}/usr/lib/firefox/extensions/${_UUID}" "${pkgdir}/usr/lib/seamonkey-2.6/extensions/${_UUID}"
}

md5sums=('b9bb14bdea2977deeafad3c29f692ac6')
