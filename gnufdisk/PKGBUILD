# Maintainer: Kovivchak Evgen <oneonfire@gmail.com>

pkgname=gnufdisk
pkgver=2.0.0a
pkgrel=1
pkgdesc="GNU clone of util-linux fdisk and cfdisk"
arch=('i686' 'x86_64')
license=('GPL3')
url="http://www.gnu.org/software/fdisk/"
depends=('guile')
makedepends=('autoconf' 'make' 'guile')
source=(ftp://ftp.gnu.org/gnu/fdisk/${pkgname}-${pkgver}.tar.gz)
md5sums=('1bc9c919999ec16c421b98d899cea777')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr 
  make || return 1
 }
 package() { 
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install || return 1
}
