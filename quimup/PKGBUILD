# Maintainer: hjst <aur at hjst dot org>
# Contributor: totoloco <totoloco at gmail _dot_com>

pkgname=quimup
pkgver=1.3.1
pkgrel=1
pkgdesc="A client for the Music Player Daemon (MPD) written in C++ and Qt"
arch=('i686' 'x86_64')
url="http://www.coonsden.com/"
license=('GPL2')
depends=('qt4' 'libmpdclient')

source=("http://downloads.sourceforge.net/project/musicpd/Quimup/${pkgver}/${pkgname}_${pkgver}_src.tar.gz"
        'quimup.desktop')
md5sums=('ea3223bb6500d20c83beafb58523052e'
         'c0b4986c3663f07f4070f2d808c0f78f')
build() {
  cd ${srcdir}/${pkgname}_${pkgver}
  qmake-qt4
  make || return 1
}

package() {
  cd ${srcdir}/${pkgname}_${pkgver}

  install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname} || return 1
  install -Dm644 ${srcdir}/${pkgname}.desktop \
    ${pkgdir}/usr/share/applications/${pkgname}.desktop || return 1
  install -Dm644 src/resources/mn_icon.png \
    ${pkgdir}/usr/share/icons/hicolor/32x32/apps/${pkgname}.png || return 1
}
