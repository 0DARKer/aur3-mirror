pkgname=wdfs
pkgver=1.4.2
pkgrel=1
arch=(i686 x86_64)
pkgdesc="A webdav file system based on FUSE"
url=http://noedler.de/projekte/wdfs/
license=GPL
depends=(fuse)
source=("http://noedler.de/projekte/wdfs/wdfs-${pkgver}.tar.gz")
md5sums=('628bb44194d04c1cf8aacc446ed0a230')

build()
{
  cd wdfs-${pkgver}
  ./configure --prefix=/usr
  make
  make DESTDIR="${pkgdir}" install
}

