pkgname=wdfs
pkgver=1.4.2
pkgrel=1
arch=('i686')
pkgdesc="wdfs is a webdav filesystem based on FUSE"
url="http://noedler.de/projekte/wdfs/"
license="GPL"
depends=('fuse')
makedepends=('gcc' 'make' 'fuse')
provides=()
conflicts=()
replaces=()
backup=()
install=
source=(http://noedler.de/projekte/wdfs/wdfs-1.4.2.tar.gz)
md5sums=('628bb44194d04c1cf8aacc446ed0a230')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
