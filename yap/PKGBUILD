pkgname=yap
pkgver=5.1.3
pkgrel=0
pkgdesc="YAP is a high-performance Prolog compiler"
url="http://www.dcc.fc.up.pt/~vsc/Yap/"
license=("Artistic" "LGPL-2")
arch=("i686" "x86_64" "ppc")
source=(http://www.dcc.fc.up.pt/~vsc/Yap/current/Yap-5.1.3.tar.gz)

md5sums='d04265acead9286b363f7209ac382490'

build(){
cd $startdir/src/Yap-$pkgver
mkdir `arch`
cd `arch`
../configure --prefix=$startdir/pkg/usr --enable-max-performance
make
make install 
mv $startdir/pkg/usr/bin/yap $startdir/pkg/usr/lib/Yap
install $startdir/yap $startdir/pkg/usr/bin
}
