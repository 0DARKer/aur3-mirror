# CPAN Name  : AnyEvent-FastPing
# Contributor: Justin Davis <jrcd83@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 1.06
pkgname='perl-anyevent-fastping'
pkgver='1.13'
pkgrel='1'
pkgdesc="quickly ping a large number of hosts"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-anyevent')
url='http://search.cpan.org/dist/AnyEvent-FastPing'
source=('http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/AnyEvent-FastPing-1.13.tar.gz')
md5sums=('dad681a51c59d6db08b92e0ee9fc729d')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/AnyEvent-FastPing-1.13"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    # You must be root for testing ICMP packets...
    # make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

