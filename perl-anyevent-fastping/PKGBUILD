pkgname='perl-anyevent-fastping'
pkgver='2.01'
pkgrel='3'
pkgdesc="quickly ping a large number of hosts"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('glibc>=2.17' 'perl-anyevent' 'perl-common-sense>=3.4')
makedepends=()
url='http://search.cpan.org/dist/AnyEvent-FastPing'
source=('http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/AnyEvent-FastPing-2.01.tar.gz')
md5sums=('4b1f3b66f9f03db99ff3547e113d5050')
sha512sums=('82483bb81b71af10336a0adc02918fb077ce905fb3c2a7a8399542a7b876244bc61d5db3b9f3c1bd10295822e4bb5325a8fc0826b18274a9b012a3720bdd6af4')
_distdir="AnyEvent-FastPing-2.01"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

