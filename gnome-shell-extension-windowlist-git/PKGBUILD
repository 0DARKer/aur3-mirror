# Maintainer: Cheng Ye <yecheng91@msn.com>
pkgname=gnome-shell-extension-windowlist-git
pkgver=20111220
pkgrel=1
epoch=
pkgdesc="gnome-shell-windowlist adds a window switcher to the top bar of gnome-shell"
arch=('i686')
url="https://github.com/siefkenj/gnome-shell-windowlist"
license=('GPL2')
groups=()
depends=('gnome-shell>=3.2.1')
makedepends=('git>=1.7.8')
checkdepends=()
optdepends=()
provides=()
conflicts=('gnome-shell-extension-windowlist')
replaces=()
backup=()
options=()
#install=PKG-INSTALL.install
changelog=
#source=($pkgname-$pkgver.tar.gz)
noextract=()

DIR_NAME='gnome-shell-windowlist'
EXT_NAME='windowlist@o2net.cl'

build() {
  cd "${srcdir}"
  git clone https://github.com/siefkenj/gnome-shell-windowlist.git
}

package() {
  mkdir -p "${pkgdir}/usr/share/gnome-shell/extensions"
  cp -a "${srcdir}/${DIR_NAME}/${EXT_NAME}" "${pkgdir}/usr/share/gnome-shell/extensions"
}
