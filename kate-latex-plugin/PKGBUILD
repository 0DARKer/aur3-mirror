pkgname=kate-latex-plugin
pkgver=0.1
pkgrel=2
pkgdesc="Kate LaTeX typesetting plugin"
arch=(i686)
url="http://www.kde-apps.org/content/show.php/Kate+LaTeX+typesetting+plugin?content=84772"
license=(GPL)
makedepends=(automoc4)
depends=('kde-meta-kdesdk>=4.0' libxtst)
source=(http://www.kde-apps.org/CONTENT/content-files/84772-katelatexplugin-0.1.tar.bz2 CMakeLists.txt.patch)
md5sums=(a623b5631b3245855621d0c8e76997a5
         c409238c80f3ebac7ad395178e08a9cf)

build() {
  cd $startdir/src/katelatexplugin
  patch CMakeLists.txt ../CMakeLists.txt.patch
  mkdir build
  cd build
  cmake ..
  make || return 1
  make install
}
