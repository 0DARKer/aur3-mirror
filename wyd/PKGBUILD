# Maintainer: Max Roder <maxroder@web.de>
# Contributor: nofxx <x@nofxx.com>

pkgname='wyd'
pkgver='0.2'
pkgrel='2'
pkgdesc='Gets keywords from personal files. IT security/forensic tool.'
arch=('any')
url='http://www.remote-exploit.org/codes/wyd'
license=('GPL')
depends=('perl')
source=("http://www.remote-exploit.org/wp-content/uploads/2010/01/${pkgname}-${pkgver}.tar.gz")
sha256sums=('70085fcfa8bfff41d6b6bb4522d9437ad62262ab39fa98d3d8076d54bb06dcb9')
	 
build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	rm docs/gpl.txt -f
	install -d ${pkgdir}/usr/share/${pkgname} ${pkgdir}/usr/bin
	cp -r * ${pkgdir}/usr/share/${pkgname}/

	ln -sf /usr/share/wyd/wyd.pl ${pkgdir}/usr/bin/wyd
	chmod +x ${pkgdir}/usr/share/wyd/wyd.pl
}

# vim:set ts=2 sw=2 et:
