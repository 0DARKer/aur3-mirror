# Maintainer: nofxx <x@nofxx.com>
pkgname=wyd
pkgver=0.2
pkgrel=1
pkgdesc="Gets keywords from personal files. IT security/forensic tool."
arch=('i686' 'x86_64')
url="http://www.remote-exploit.org/codes/wyd"
license=('GPL')
depends=('perl')
provides=(wyd)
conflicts=(wyd)
install=
source=(http://www.remote-exploit.org/codes/wyd/$pkgname-$pkgver.tar.gz)
md5sums=('a032c851e10a9eb102f5196c27b8e6b0')
	 
build() {
	cd $startdir/src/$pkgname-$pkgver
	install -d $startdir/pkg/usr/share/wyd || return 1
	install -d $startdir/pkg/usr/bin || return 1
	cp -r * $startdir/pkg/usr/share/wyd || return 1
	chmod +x $startdir/pkg/usr/share/wyd/wyd.pl || return 1
	echo "/usr/share/wyd/wyd.pl" > $startdir/pkg/usr/bin/wyd || return 1
	chmod +x $startdir/pkg/usr/bin/wyd || return 1
        
}
