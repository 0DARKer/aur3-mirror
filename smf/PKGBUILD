# Contributor: Oleg Ababilov <admin@it-std.ru>
pkgname=smf
pkgver=1.1.10
_pkgver=1-1-10
pkgrel=1
pkgdesc="Freeware internet forum engine"
arch=('i686' 'x86_64')
url="http://www.simplemachines.org"
license=('custom')
depends=('mysql' 'php')
source=("http://download.simplemachines.org/index.php/smf_${_pkgver}_install.tar.bz2")
md5sums=('dd6dea5930a4cedf47e145242eb2626c')

build() {
  #
  # ###
  local _wwwroot=`grep ^DocumentRoot /etc/httpd/conf/httpd.conf | sed 's|DocumentRoot ||' | sed 's|"||g'`
  if [ -z $_wwwroot ] ; then
    _wwwroot="/srv/http"
  fi
  # ###
  #

  mkdir -p $startdir/pkg/$_wwwroot/smf
  mkdir -p $startdir/pkg/usr/share/licenses/smf
  cp -r $startdir/src/* $startdir/pkg/$_wwwroot/smf && \
  rm -f \
	$startdir/pkg/$_wwwroot/smf/smf_${_pkgver}_install.tar.bz2 \
	$startdir/pkg/$_wwwroot/smf/news_readme.html \
	$startdir/pkg/$_wwwroot/smf/readme.html \
	$startdir/pkg/$_wwwroot/smf/changelog.txt && \
  mv -f $startdir/pkg/$_wwwroot/smf/license.txt $startdir/pkg/usr/share/licenses/smf/
}
