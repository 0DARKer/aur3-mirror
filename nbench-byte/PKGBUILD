# Maintainer: kfgz <kfgz at interia dot pl>

pkgname=nbench-byte
pkgver=2.2.3
pkgrel=1
pkgdesc="A CPU benchmark utility"
arch=('i686' 'x86_64')
url="http://www.tux.org/~mayer/linux/bmark.html"
license=('other')
options=(!makeflags)
source=(http://www.tux.org/~mayer/linux/$pkgname-$pkgver.tar.gz
        Makefile
        nbench)
md5sums=(285dfab361080759d477ea1fe7d3093a
         3e0850abdaa162c2b2aa05315a98fa24
         7db5ab75dbe53578069f708d787fc437) 

build() {
  install -dm755 $pkgdir/usr/{bin,share/doc/$pkgname}	
  cp Makefile $srcdir/$pkgname-$pkgver
  cd $srcdir/$pkgname-$pkgver
  make || return 1
  install -m755 $srcdir/$pkgname-$pkgver/nbench $pkgdir/usr/bin/nbench-byte
  install -m755 $startdir/nbench $pkgdir/usr/bin
  install -m644 $srcdir/$pkgname-$pkgver/NNET.DAT $pkgdir/usr/bin
  install -m644 $srcdir/$pkgname-$pkgver/bdoc.txt $pkgdir/usr/share/doc/$pkgname
  install -m644 $srcdir/$pkgname-$pkgver/Changes $pkgdir/usr/share/doc/$pkgname
}
