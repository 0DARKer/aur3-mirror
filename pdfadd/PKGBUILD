# Maintainer: Thomas Etcheverria <mrmen@alka>

pkgname=pdfadd
pkgver=1.0
pkgrel=1
pkgdesc="Making mathematic graphics with asymptote and LaTeX"

url="http://www.xm1math.net/pdfadd/"
arch=('i686' 'x86_64')
license=('GPL')

depends=('qt' 'asymptote' 'poppler-qt' 'texlive-core')

install=$pkgname.install

source=("http://www.xm1math.net/$pkgname-$pkgver.tar.bz2")
md5sums=('23512f31176b34924a31cd0a2f29f4bf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  export INSTALL_ROOT="${pkgdir}"
  qmake PREFIX=/usr "${pkgname}.pro"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make install
  rm "${pkgdir}/usr/share/${pkgname}/COPYING"
}
