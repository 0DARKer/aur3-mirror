# Maintainer: Zhengyu Xu <xzy3186@gmail.com>

pkgname=insync-nemo
pkgver=1.0.28
pkgrel=1
pkgdesc="Nemo integration for insync"
url="https://support.insynchq.com/forums/discussion/2699/new-insync-version-1-0-28"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "nemo" "nemo-python-git")
makedepends=('gtk-doc')
source=("${pkgname}-${pkgver}.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}.31731_all.deb")
sha256sums=("e6f36cf090a0f2fba9919f4946ca1e0f8c9689804561d1d671dc1d321e6b62e9")
noextract=("${pkgname}-${pkgver}.deb")

package() {
   cd $srcdir
   ar x ${pkgname}-${pkgver}.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
