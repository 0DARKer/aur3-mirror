pkgname=gtk-theme-equinox
pkgver=1.30.2
pkgrel=1
pkgdesc="gtk theme for equinox engine"
url="http://gnome-look.org/content/show.php/Equinox+GTK+Engine?content=121881"
license=('GPL2')
arch=('any')
depends=('gtk-engine-equinox')
makedepends=()
optdepends=('faenza-icon-theme: icons designed for this theme')
conflicts=()
source=("http://gnome-look.org/CONTENT/content-files/121881-equinox-1.30.tar.bz2")
sha256sums=('1fea28bb08e89c63bdcb9ba8ee612b4e8fd9bea56a715efe6d7d8bcd7848013f')

build() {
        # extract theme files
        mkdir -p "${pkgdir}"/usr/share/themes
        tar xzf equinox-themes.tar.gz -C "${pkgdir}"/usr/share/themes
	mv "${pkgdir}/usr/share/themes/Equinox Evolution.crx" \
	"${pkgdir}/usr/share/themes/Equinox Evolution/Equinox Evolution.crx"
	mv "${pkgdir}"/usr/share/themes/userChrome.css \
	"${pkgdir}"/usr/share/themes/Equinox/userChrome.css
        chown -R root:root "${pkgdir}"/usr/share/themes
}
