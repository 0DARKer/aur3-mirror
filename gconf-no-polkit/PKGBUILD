# Maintainer: Stefan Mark <mark@unserver.de>
pkgname=gconf-no-polkit
pkgver=2.32.0
pkgrel=1
pkgdesc="GConf without polkit. Polkit's EVIL(TM).."
arch=('i686' 'x86_64')
url="ftp://ftp.gnome.org/pub/GNOME/sources/GConf/$pkgver/"
license=('GPL2')
groups=()
depends=('dbus-glib' 'gtk2' 'libldap' 'libxml2' 'orbit2')
makedepends=()
optdepends=()
provides=("gconf=0100418")
conflicts=('gconf' 'polkit')
replaces=('gconf')
backup=()
options=()
changelog=
source=("${url}GConf-${pkgver}.tar.bz2"
        gconf-merge-schema
        gconfpkg
        gconf-reload.patch
        01_xml-gettext-domain.patch)
noextract=()
#'e3952c493cabee2903690fc4d203dca3'
md5sums=(
         'b161da6a1ab090b649aed3111003b0bb'
         '240b473fa17b748fc9020caf372d936c'
         '6d0816ec7da0713a8e091a78b1eb9e57'
         'cfcc8e15be7b8a48de4aa34336ff6090'
         '1f9362976d71312bdb57c57fa031681d') #generate with 'makepkg -g'
#md5sums=('e3952c493cabee2903690fc4d203dca3'
#         'ee6b6e6f4975dad13a8c45f1c1f0547a99373bdecdcd6604bfc12965c328a028'
#         'bf1928718caa5df2b9e54a13cfd0f15a8fe0e09e86b84385ce023616a114e898'
