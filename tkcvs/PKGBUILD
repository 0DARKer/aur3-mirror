pkgname=tkcvs
pkgver=8.2.2
pkgrel=1
pkgdesc="tkcvs is a graphical front end for cvs"
license=('GPL')
depends=('subversion' 'cvs' 'tk' 'diffutils')
arch=('i686' 'x86_64')
source=(http://www.twobarleycorns.net/tkcvs_${pkgver//./_}.tar.gz)
url="http://www.twobarleycorns.net/tkcvs.html"
md5sums=('8ad8f5a3b32392fa02a2fffa42032432')

build() {
   cd $startdir/src/tkcvs_${pkgver//./_}
   ./doinstall.tcl -nox $startdir/pkg/usr
}
