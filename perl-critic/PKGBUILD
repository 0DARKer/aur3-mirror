pkgname=perl-critic
pkgver=1.108
pkgrel=1
pkgdesc="Critique Perl source code for best-practices."
arch=('i686' 'x86_64')
url="http://search.cpan.org/~ELLIOTJS/Perl-Critic"
license=('GPL' 'PerlArtistic')
depends=('perl-readonly>=1.03' 'perl-io-string' 'perl-exception-class>=1.23' 'perl-config-tiny>=2'
         'perl-b-keywords>=1.05' 'perl-ppi>=1.203' 'perl-list-moreutils' 'perl-string-format>=1.13' 'perl-class-data-inheritable')
makedepends=('perl-devel-stacktrace>=0.17')
options=('!emptydirs' 'purge')
source=(http://www.cpan.org/authors/id/E/EL/ELLIOTJS/Perl-Critic-$pkgver.tar.gz) 
md5sums=('b6b20da0d80c1b0357ef49e061dbb400')

build() {
  cd  "$srcdir/Perl-Critic-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR="$pkgdir" || return 1
}

