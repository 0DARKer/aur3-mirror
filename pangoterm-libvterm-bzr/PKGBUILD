# Maintainer: Jonas Höglund <aur＠firefly․nu>
pkgname=pangoterm-libvterm-bzr
pkgver=548
pkgrel=1
pkgdesc="An abstract library implementation of a VT220/xterm/ECMA-48 terminal emulator, not to be confused with the other package called 'libvterm'."
arch=('i686' 'x86_64')
url="https://launchpad.net/libvterm"
license=('mit')
depends=()
makedepends=('bzr')
provides=('pangoterm-libvterm')

_bzrtrunk=lp:libvterm
_bzrmod=libvterm

build() {
  cd "$srcdir"
  msg "Connecting to Bazaar server...."

  if [[ -d "$_bzrmod" ]]; then
    cd "$_bzrmod" && bzr pull "$_bzrtrunk" -r "$pkgver"
    msg "The local files are updated."
  else
    bzr branch "$_bzrtrunk" "$_bzrmod" -q -r "$pkgver"
  fi

  msg "Bazaar checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_bzrmod-build"
  cp -r "$srcdir/$_bzrmod" "$srcdir/$_bzrmod-build"
  cd "$srcdir/$_bzrmod-build"

  # Build
  make PREFIX=/usr
}

package() {
  cd "$srcdir/$_bzrmod-build"

  make PREFIX=/usr DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
