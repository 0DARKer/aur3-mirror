# Contributor: Sebastien Binet <binet@cern.ch>
pkgname=python-pytables
pkgver=2.2.1
pkgrel=2
arch=("i686" "x86_64")
pkgdesc="PyTables is a package for managing hierarchical datasets and designed to efficiently and easily cope with extremely large amounts of data"
url="http://www.pytables.org"
license=("BSD")
depends=('lzo2' 'bzip2' 'python2-numpy' 'hdf5' 'python-numexpr' 'cython')
source=("http://www.pytables.org/download/pytables-$pkgver/tables-${pkgver}.tar.gz")
md5sums=('37f4932ecff9fe97bffc7a3d2e7da427')

build() {
  cd $startdir/src/tables-${pkgver}
  python2 setup.py build || return 1
  python2 setup.py install --prefix=/usr --root=$startdir/pkg

}
