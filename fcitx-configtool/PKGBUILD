pkgname=fcitx-configtool
pkgver=0.2.0
pkgrel=2
pkgdesc="Fcitx Config Tool"
arch=('i686' 'x86_64')
url="http://fcitx.googlecode.com/"
license=('GPL3')
depends=(fcitx glib2 gtk2 libunique)
makedepends=(cmake)
source=(http://fcitx.googlecode.com/files/$pkgname-$pkgver.tar.gz
	fcitx-configtool-0.2.0-fix-gtk.patch)
md5sums=('b6d74c96e010a8d2674ad61244c1b71a'
	'66ec42ac87aa0efbc396017b403c501f')

build()
{
	cd "$srcdir"
	patch -Np0 -i fcitx-configtool-0.2.0-fix-gtk.patch
	cd "$srcdir/$pkgname-$pkgver"
	msg "Starting make..."

	cmake -DCMAKE_INSTALL_PREFIX=/usr . &&
	make &&
	make DESTDIR="$pkgdir" install || return 1
}


