# Contributor: Ronan Rabouin <darkbaboon@gmail.com>

pkgname=dccnitghtmare
pkgver=0.6
pkgrel=1
pkgdesc="A free sarcastic 3D single player RPG set in a post-apocalyptical world"
arch=('i686' 'x86_64')
url="http://dnt.dnteam.org/"
license=('custom')
depends=('cal3d' 'openal' 'libgl' 'sdl_image' 'sdl_ttf' 'libvorbis' 'mesa')
source=('dccnitghtmare.desktop' "http://downloads.sourceforge.net/$pkgname/dccnitghtmare-${pkgver}.tar.bz2")
md5sums=('c3e00e70de58ada8ba0676ccd4627251'
         'd3cf6f7b0da09fe513e0682a97d1af53')

build() {
cd $pkgname

    # Install Desktop File
    install -D -m644 $srcdir/dccnitghtmare.desktop \
        $pkgdir/usr/share/applications/dccnitghtmare.desktop

  ./configure --prefix=/usr

  make || return 1
  mkdir -p "$pkgdir"/usr/bin
  make prefix="$pkgdir"/usr install
}

# vim:set ts=2 sw=2 et:
