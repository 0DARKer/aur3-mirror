# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=nthash
pkgver=0.1.0.0.ge56ed2f
pkgrel=1
pkgdesc="Generate NT Hash"
arch=('i686' 'x86_64')
url="http://www.eworm.de/"
depends=('nettle')
makedepends=('git')
license=('GPL')
source=('git://github.com/eworm-de/nthash.git')
    
pkgver() {
	cd nthash/
	git describe --tags --long | sed 's|^[^0-9]*||;s|-|.|g'
}

build() {
	cd nthash/

	make
}

package() {
	cd nthash

	install -D -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
}

sha256sums=('SKIP')
