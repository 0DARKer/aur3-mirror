# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=nthash
pkgver=0.1.4
pkgrel=1
pkgdesc="Generate NT Hash"
arch=('i686' 'x86_64')
url="https://github.com/eworm-de/nthash"
conflicts=('nthash-git')
depends=('nettle')
license=('GPL')
source=("http://www.eworm.de/download/linux/${pkgname}-${pkgver}.tar.xz"{,.asc})
    
build() {
	cd ${pkgname}-${pkgver}/

	make
}

check() {
	cd ${pkgname}-${pkgver}/

	make check
}

package() {
	cd ${pkgname}-${pkgver}/

	make DESTDIR="${pkgdir}" install
}

sha256sums=('71127d270b81ca4d979c6798c6c4c22cf815e5b13b98bc242155cf827f6fbd65'
            'SKIP')
