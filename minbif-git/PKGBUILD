# Contributor: Brandon Hartshorn <sharntehnub@gmail.com>
pkgname=minbif-git
pkgver=20091024
pkgrel=1
pkgdesc="Uses libpurple from Pidgin to interface with IRC - similar to bitlbee"
arch=('i686')
url="http://symlink.me/wiki/minbif"
license=('GPL')
depends=('pidgin' 'libcaca')
makedepends=('git' 'cmake')
provides=('minbif')
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
#source=(arch.patch)
noextract=()
#md5sums=('3a2edaee8035db3f4391b31df2318a47') #generate with 'makepkg -g'

_gitroot="git://git.symlink.me/pub/romain/minbif.git"
_gitname="minbif"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
#  patch < ../arch.patch


  #
  # BUILD HERE
  #

  #./autogen.sh
  #./configure --prefix=/usr
  make ENABLE_CACA=1 PREFIX=/usr CONF_PREFIX=/etc || return 1
  make DESTDIR="$pkgdir/" install

  install -m755 -d "$pkgdir/var/lib/minbif/users"
} 
