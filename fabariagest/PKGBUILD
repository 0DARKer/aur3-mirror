# Contributor: Calogero e Angelo Scarn√† <info@codelinsoft.it>
pkgname=fabariagest
pkgver=1.0_alpha2
pkgrel=1
pkgdesc="Gestionale aziendale." 
url="http://fabariagest.codelinsoft.it/"
arch=('i686' 'x86_64')
depends=('qt4' 'mysql' 'qca-ossl')
license=(LGPL)
source=(http://www.codelinsoft.it/sito/download/categoria-linux/categoria-linux-fabariagest/fabaria-gest-source-code.raw)
md5sums=("6c30298f53f9029934a7b02ab4a38c8e")



build() {
cd "${srcdir}/${pkgname}-${pkgver}"
qmake-qt4 
make -j5
}

package() {
cd "${srcdir}/${pkgname}-${pkgver}"
install -d "$pkgdir"/opt
install -dm 755 ${pkgdir}/opt/fabaria_gest
cp -rv  "${srcdir}/${pkgname}-${pkgver}/fabaria/fabaria_gest" "${pkgdir}/opt/fabaria_gest"
cp -rv  "${srcdir}/${pkgname}-${pkgver}/fabaria/images/logo4.png" "${pkgdir}/opt/fabaria_gest/"
install -m 755 -d "${pkgdir}/opt/fabaria_gest/plugin"
install -m 755 -d "${pkgdir}/opt/fabaria_gest/data"
cp -rv  "${srcdir}/${pkgname}-${pkgver}/fabaria/data/" "${pkgdir}/opt/fabaria_gest/"
install -Dm644  "${srcdir}/${pkgname}-${pkgver}/fabaria/desktop/fabaria.desktop" "${pkgdir}"/usr/share/applications/fabaria.desktop
cp -rv  "${srcdir}/${pkgname}-${pkgver}/fabaria/plugin/" "${pkgdir}/opt/fabaria_gest/"





}

