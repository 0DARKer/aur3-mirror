# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-etsdevtools
pkgver=3.1.1
_githubtag=df714d0
pkgrel=2
pkgdesc="Enthought tools to support Python development"
arch=('any')
url="https://github.com/enthought/etsdevtools"
license=('BSD')
depends=('python2' 'python2-numpy>=1.1' 'docutils' 'python2-nose'
         'python-pyro' 'python-reportlab' 'python-testoob'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('python2-distribute')
conflicts=('python2-etsdevtools-git' 'python-ets-devtools-svn')
options=(!emptydirs)

source=("https://github.com/enthought/etsdevtools/tarball/${pkgver}")
md5sums=('dfe999c8ef6594d39aeea7e5ce6d404f')

build() {
  cd "$srcdir/enthought-etsdevtools-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

