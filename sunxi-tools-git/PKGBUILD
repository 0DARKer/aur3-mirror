# Maintainer: choopm <choopm at 0pointer.org>
# Contributor: BOYPT <pentie at gmail.com>

pkgname=sunxi-tools-git
pkgver=20140404
pkgrel=1
pkgdesc="Tools to help hacking Allwinner based devices. (A10, A20, sun4i, sun7i)"
arch=(i686 x86_64)
url="https://github.com/linux-sunxi/sunxi-tools"
license=('GPL')
groups=()
depends=(glibc libusbx)
makedepends=(git pkg-config gcc libusb libusbx)
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=https://github.com/linux-sunxi/sunxi-tools.git
_gitname=sunxi-tools

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make
}

package() {
  cd "$srcdir/$_gitname-build"
  install -Dm755 -d $pkgdir/usr/bin
  install -Dm755 -t $pkgdir/usr/bin fexc bootinfo fel nand-part usb-boot
  cd $pkgdir/usr/bin
  ln -s fexc bin2fex
  ln -s fexc fex2bin
}
