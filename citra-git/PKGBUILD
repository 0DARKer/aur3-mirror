# Maintainer: ceri
# Contributor: ceri

pkgname=citra-git
pkgver=r265.924e7b6
pkgrel=1
pkgdesc="An experimental open-source Nintendo 3DS emulator/debugger"
arch=('i686' 'x86_64')
url="https://github.com/bunnei/citra/"
license=('GPL2')
depends=('qt4' 'glew')
makedepends=('git' 'cmake' 'glfw')
options=()
source=('git+https://github.com/bunnei/citra.git')
md5sums=('SKIP')
_gitpath='citra'

pkgver() {
	cd "$srcdir/$_gitpath"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/$_gitpath"
	mkdir build
	cd build
	cmake .. -DCMAKE_BUILD_TYPE=Debug
	make
}

package() {
	cd "$srcdir/$_gitpath/build/src/citra_qt/"
	install -D -m 755 citra-qt $pkgdir/usr/bin/citra
}
