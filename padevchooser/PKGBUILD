pkgname=padevchooser
pkgver=0.9.3
pkgrel=6
pkgdesc="Change an X11 session's PulseAudio server"
arch=('i686' 'x86_64')
url="http://0pointer.de/lennart/projects/padevchooser"
license=('GPL')
depends=('libglade' 'pulseaudio' 'libnotify' 'gconf' 'libxtst' 'avahi')
source=(http://0pointer.de/lennart/projects/padevchooser/${pkgname}-${pkgver}.tar.gz)
md5sums=('6a9b52ad349f3fb3d5a3ccdf85958710')
sha1sums=('5a611c0e8a1f139c56ca696b8fd8dd7a65b77ba7')
sha256sums=('3238f19ea5a3c54efef31e4f86c712232c92704d68c9d2bbef0339ba9b4cb674')
sha384sums=('54203a04f49a11ec080b1c5980d6b7b7c97fc746b00033acb6394bbd6f6c9ef322d1869af8d6667618a967752e837d95')
sha512sums=('4e56f17839e3c0b4d5163a1d5d2066c02702d8c528593f444e1734b60cd05f479bea697d193fc887a7891455cfdb15ef182c48a3a619e38d2e3f61165bf88326')

build() {
	cd ${srcdir}/${pkgname}-${pkgver} || return 1
	./configure --prefix=/usr --disable-lynx || return 1
	make || return 1
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver} || return 1
	make DESTDIR=${pkgdir} install || return 1
}
