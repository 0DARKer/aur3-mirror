pkgname=psensor
pkgver=0.5.1
pkgrel=1
pkgdesc="Psensor is a graphical hardware temperature monitor for Linux. "
arch=('i686' 'x86_64')
url="http://wpitchoune.net/psensor"
license=('GPL')
depends=('lm_sensors' 'cairo' 'gtk2')
optdepends=('libnotify: support for notifications')

source=(http://wpitchoune.net/psensor/files/$pkgname-$pkgver-src.tar.gz)

md5sums=('b644c53c879abd023a610949a08ef59f')


build() {
  cd "$srcdir/$pkgname-$pkgver"

  make || return 1
  
  install -Dm755 psensor $pkgdir/usr/bin/psensor
  install -Dm755 psensor-server $pkgdir/usr/bin/psensor-server
  install -Dm655 psensor.desktop $pkgdir/usr/share/applications/psensor.desktop
  mkdir -p $pkgdir/usr/share/psensor/
  install -Dm655 psensor-32x32.png NEWS README copyright  $pkgdir/usr/share/psensor/

}

