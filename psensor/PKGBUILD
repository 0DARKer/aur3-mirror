pkgname=psensor
pkgver=0.6.1.6
pkgrel=1
pkgdesc="Psensor is a graphical hardware temperature monitor for Linux. "
arch=('i686' 'x86_64')
url="http://wpitchoune.net/psensor"
license=('GPL')
depends=('lm_sensors' 'cairo' 'gtk2')
optdepends=('libnotify: support for notifications')

source=(http://wpitchoune.net/psensor/files/$pkgname-$pkgver.tar.gz
        ui_notify_libnotify_0.7.patch)

md5sums=('3bbdac517f48184989fae12482e0fce5'
         '6bb5b5341d4a4c17a59009369ada7a1d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  patch $srcdir/$pkgname-$pkgver/src/ui_notify.c < $srcdir/ui_notify_libnotify_0.7.patch
  
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install

}

