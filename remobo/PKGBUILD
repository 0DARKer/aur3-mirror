# Remobo: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>

pkgname=remobo
pkgver=0.40.10
pkgrel=1
pkgdesc="A zero-configuration IPN service"
arch=("i686" "x86_64")
url="http://www.${pkgname}.com/"
license=("custom")
depends=("libpng12" "libjpeg6" "gtk2")
install="${pkgname}.install"
options=(!emptydirs)
[ "${CARCH}" == "i686" ] && filearch=i386 && sha1sums=('335749de49505ebb5185034faf757b85679ba09b')
[ "${CARCH}" == "x86_64" ] && filearch=x86_64 && sha1sums=('cd85350d44b0b25a009093795e9540ffae857c33')
source=("http://download.${pkgname}.com/${pkgname}-${pkgver}.${filearch}.tar.bz2")

build() {
	/bin/true
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}.${filearch}

	mkdir -p ${pkgdir}/usr/ || return 1
	cp -r * ${pkgdir}/usr/ || return 1

	# Desktop
	install -D ${startdir}/extra/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
}
