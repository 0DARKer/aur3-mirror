# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=trizen
pkgver=20110219
pkgrel=1
pkgdesc="Trizen AUR Package Manager: A lightweight wrapper for pacman and AUR."
arch=('any')
url="https://github.com/trizen/trizen"
license=('GPL')
makedepends=('git')
depends=('perl-libwww' 'pacman')
_gitroot="git://github.com/trizen/trizen.git"
_gitname="trizen"

build() {
    cd "$srcdir"
  
    msg "Connecting to github GIT server...."
    
    if [ -d "$srcdir/$_gitname" ] ; then
        cd $_gitname && git pull origin
    else
        git clone "$_gitroot"
        cd $_gitname
    fi
    
    install -m 755 -D $pkgname "$pkgdir/usr/bin/$pkgname"
}