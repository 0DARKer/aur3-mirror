pkgname=trizen
pkgver=0.8.2
pkgrel=1
pkgdesc="Lightweight AUR Package Manager - A simple Perl script."
arch=('any')
url="http://i54.tinypic.com/286vos4.png"
license=('GPL')
depends=('perl-libwww' 'tar' 'sed' 'pacman')
source=(http://trizen.go.ro/files/trizen)
md5sums=('9a4cb0c5b0caabdede32a5f2d6c8e406')

build() {
  install -Dm 755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}
