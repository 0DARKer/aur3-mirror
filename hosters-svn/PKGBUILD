pkgname=hosters-svn
pkgver=212
pkgrel=1
pkgdesc="A  program to get info about files in hosting sites like Rapidshare, Megaupload..."
arch=('i686' 'x86_64')
url="http://code.google.com/p/hosterslib/"
license=('LGPL')
depends=('libfsaction' 'libreaddata' 'libulibload')
makedepends=('gcc' 'subversion' 'cmake' 're2c' 'libfsaction' 'libreaddata' 'liboptreader' 'libulibload')
options=()
conflicts=('libhosters' 'hostersapp')
provides=('libhosters' 'hostersapp')
source=()
md5sums=()

_svntrunk=https://hosterslib.googlecode.com/svn/trunk/
_svnmod=hosterslib

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd hosterslib && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir hosters-build
	cd hosters-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/hosters
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/hosters-build

}
