# Maintainer: Frederick Arthur David Dalladay <fadd -at- faddish -dot- co>

pkgname=maradns2
pkgfile=maradns
pkgver=2.0.01
pkgrel=1
pkgdesc="A security-aware DNS server"
arch=('i686' 'x86_64')
depends=(glibc)
source=(http://www.maradns.org/download/2.0/$pkgver/$pkgfile-$pkgver.tar.bz2 mara.startup)
md5sums=('1bd51e44dc4de44f9c9d87660a019f3f' 'fa891026331e2475121a4982b4a8b19c')
url="http://maradns.org"
license=('custom')

build() {
	install -d ${pkgdir}/usr/{bin,sbin} || return 1
	install -d ${pkgdir}/usr/man/man{1,5,8} || return 1
	install -d ${pkgdir}/etc/{maradns,rc.d} || return 1
	install -d ${pkgdir}/usr/share/licenses/${pkgfile}
	
	cd ${srcdir}/${pkgfile}-${pkgver}
	make || return 1
	#PREFIX="$pkgdir/usr"
	#RPM_BUILD_ROOT="$PREFIX"
	#make install
	PREFIX=${pkgdir}/usr RPM_BUILD_ROOT=${pkgdir} make install || return 1
	
	install -m755 ../mara.startup ${pkgdir}/etc/rc.d/maradns
	install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgfile}
}

