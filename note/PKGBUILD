# Contributor: Viaken <Viaken@Gmail.com>
pkgname=note
pkgver=1.3.7
pkgrel=2
pkgdesc="A Perl-based note taking application with multiple backends"
arch=('i686' 'x86_64')
url="http://www.daemon.de/NOTE"
license=('GPL')
depends=('perl')
optdepends=(
            'perl-config-general: general db backend'
            'perl-crypt-cbc: encryption support'
            'perl-crypt-rijndael: encryption support'
            'perl-dbd-mysql: mysql db backend'
            'perl-dbi: mysql db backend'
            )
source=(http://www.daemon.de/idisk/Apps/note/$pkgname-$pkgver.tar.gz)
md5sums=('91d8dbe8d3d57deda64b9d1cf2fadd3b')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  perl Makefile.PL
  make || return 1
  make DESTDIR="$pkgdir" install

  chmod -R g-w "$pkgdir/"
}
