pkgname=lib32-libidn
pkgver=1.19
pkgrel=1
pkgrel32=1
pkgdesc="Implementation of the Stringprep, Punycode and IDNA specifications"
arch=('x86_64')
url="http://www.gnu.org/software/libidn"
license=('GPL')
groups=('lib32')
source=("ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-$pkgver-$pkgrel32-i686.pkg.tar.xz")
md5sums=('f9dd54c2b77cdbfe66cfe1a99d033acd')

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr/lib
  cp -rPf ${startdir}/src/usr/lib/*.so* ${startdir}/pkg/opt/lib32/usr/lib
}

