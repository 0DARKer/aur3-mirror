# Maintainer: M4rQu1Nh0S <zonadomarquinhos@gmail.com>
pkgname=nmpfront-git
pkgver=20130216
pkgrel=2
pkgdesc="Noname is a MPlayer GTK+ Front-end"
arch=('i686' 'x86_64')
url="http://nmpfront.sourceforge.net/"
license=('GPL3')
depends=('gtk2')
makedepends=('git')
optdepends=('mplayer2: Mplayer with advanced general-purpose media player')
source=('fixes.patch')
md5sums=('1aa5b3a497b351026f46760609bf0286')

_gitroot=git://nmpfront.git.sourceforge.net/gitroot/nmpfront/nmpfront
_gitname=master

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cp "$startdir/fixes.patch" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  patch -Np0 < "fixes.patch"

  #
  # BUILD HERE
  #
  aclocal
  autoconf
  ./autogen.sh CFLAGS="-lpthread -lm" --prefix=/usr --docdir=/usr/share/doc

  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
