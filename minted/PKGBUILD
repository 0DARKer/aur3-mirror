# Maintainer: Markus HÃ¤rer <markus.haerer@gmx.net>

pkgname=minted  
pkgver=1.99.3
pkgrel=1
pkgdesc="Highlighted source code for LaTeX."
url="https://github.com/gpoore/${pkgname}"
arch=('any')
license=('BSD')
depends=('texlive-core' 'python2-pygments' 'python-pygments')
source=('https://github.com/gpoore/minted/archive/v2.0-alpha3.tar.gz'
        'minted.install')
md5sums=('7130b84b17fa7986aa4444f9796baf2a'
         'a573ca786bc416e905171f49abf3ba46')
install=minted.install

build() {
  cd ${srcdir}/minted-2.0-alpha3/source
  tex minted.ins
}

package() {
  mkdir -p ${pkgdir}/usr/share/texmf/tex/latex/${pkgname}
  mkdir -p ${pkgdir}/usr/share/doc/${pkgname}
  install -Dm644 ${srcdir}/minted-2.0-alpha3/source/minted.sty ${pkgdir}/usr/share/texmf/tex/latex/${pkgname}
  install -Dm644 ${srcdir}/minted-2.0-alpha3/source/minted.pdf ${pkgdir}/usr/share/doc/${pkgname}
}
