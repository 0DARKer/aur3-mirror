pkgname=minted
pkgver=20110917
pkgrel=1
_verdate=20110917
pkgdesc="highlighted source code for LaTeX"
arch=('i686' 'x86_64')
url='http://tug.ctan.org/tex-archive/macros/latex/contrib/minted/'
license=('BSD', 'custom:Latex Project Public License')
depends=('latex', 'python-pygments')
makedepends=('latexmk')
source=(http://mirror.ctan.org/macros/latex/contrib/minted.zip)
md5sums=('5a781d157834c4010d0c23ad01d44fc8')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make LATEXMK=latexmk-425
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  makedir "$pkgdir/usr/share/texmf-dist/tex/latex/minted"
  install "$srcdir/minted.sty" "$pkgdir/usr/share/texmf-dist/tex/latex/minted"
}
