pkgname=hqplayer
_debpkgver=3.4.0
pkgver=$_debpkgver
pkgrel=2
pkgdesc="The high-end upsampling multichannel software HD-audio player"
arch=('x86_64')
url="http://www.signalyst.com/consumer.html"
license=('custom')
depends=('alsa-lib' 'glibc' 'flac' 'libx11' 'gcc-libs' 'qt4')
optdepends=('evince: hqplayer manual reading')
source=("http://www.signalyst.com/binx/hqplayer_3.4.0-10_amd64.deb" 'copyright')
sha256sums=('459c7561fffc471be43af9132a492960528bb6f6e73a3119463f943944f91400' '15fb909211ec2fef1f7fa9af779f22cb236031c1cdab213f9461fa5626f69965')

package() {
 cd "$srcdir"
  bsdtar xf data.tar.xz -C "$pkgdir"
   install -Dm644 "copyright" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}