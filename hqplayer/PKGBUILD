pkgname=hqplayer
_debpkgver=3.3.2
pkgver=$_debpkgver
pkgrel=3
pkgdesc="The high-end upsampling multichannel software HD-audio player"
arch=('x86_64')
url="http://www.signalyst.com/consumer.html"
license=('custom')
depends=('alsa-lib' 'flac' 'libx11' 'gcc-libs' 'qt4' 'evince')
source=("http://www.signalyst.com/binx/hqplayer_3.3.2-9_amd64.deb" 'copyright')
sha256sums=('9276ceb5b793c84ba697864b6fe9f297c7ecd3eec4a859e606279aaebd30a5c6' '21c12039751b7be8f548fbc98eb7cc8ee75820452871ddff007f0af91dc3f07d')

package() {
 cd "$srcdir"
  bsdtar xf data.tar.gz -C "$pkgdir"
   install -Dm644 "copyright" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}