# Maintainer: Tetsumaki <http://goo.gl/YMBdA>

pkgname=qt5-qtsystems-git
pkgver=20130307
pkgrel=1
pkgdesc="Qt 5: qtsystems module for official qt5 extra repo"
arch=('i686' 'x86_64')
url="https://qt.gitorious.org/qt/qtsystems"
license=('LGPL')
depends=('qt5-base')
makedepends=('git' 'qt5-base')
options=('!libtool')
source=()
sha1sums=()

_gitroot="git://gitorious.org/qt/qtsystems.git"
_gitname=qt5-qtsystems
_gitbranch=master

build() {
	if [ ! -d "${_gitname}" ]; then
		git clone -b ${_gitbranch} --depth 1 ${_gitroot} ${_gitname} && cd ${_gitname}
	else
		cd ${_gitname} && git reset --hard && git pull origin && git clean -dfx
	fi

	msg "GIT checkout done."

	qmake
	make
}

package() {
	cd "${_gitname}"
	make INSTALL_ROOT="${pkgdir}" install
}
