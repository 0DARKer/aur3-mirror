# Contributor: Daenyth <Daenyth+Arch AT gmail DOT com>
pkgname=ruby-facets
pkgver=2.7.0
pkgrel=1
pkgdesc="The largest collection of core extension methods and standard library additions for Ruby"
arch=(any)
url="http://facets.rubyforge.org/"
license=(RUBY)
depends=(ruby)
source=(http://gems.rubyforge.org/gems/facets-$pkgver.gem)
noextract=(facets-$pkgver.gem)
md5sums=('64a2d5a38bb7b9a5274aa8e0fad06db7')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install -i "$pkgdir$_gemdir" facets-$pkgver.gem
}


