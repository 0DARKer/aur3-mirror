#!/bin/sh

post_install() {
	echo " > Now add 'ykfde' to your HOOKS array in /etc/mkinitcpio.conf,"
	echo " > prepare with command 'ykfde' and rebuild initial ramdisk."
	echo " > Please note that the challenge is not changed on every boot."
}

post_remove() {
	sed -i "/^HOOKS=/s/ykfde//" /etc/mkinitcpio.conf
}
