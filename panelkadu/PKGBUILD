# Maintainer: FadeMind <fademind@gmail.com>

pkgname=panelkadu
pkgver=1.0_11
pkgrel=3
_customname=ultr-kadu-plugins-panelkadu
_git=d2ada146ad728d285b49fa8425f7346d9ed49bf1
pkgdesc='Panelkadu plugin for Kadu IM'
arch=('i686' 'x86_64')
url='http://www.kadu.im/w/Panelkadu'
license=('GPL')
depends=('kadu>=1.0')
makedepends=('cmake' 'chrpath')
source=("$pkgname-$pkgver.tar.gz"::'https://gitorious.org/ultr-kadu-plugins/panelkadu/archive/$_git.tar.gz')
sha256sums=('1efe4168779a329dd34fdfbfb0a0842e6f2e152f8fc481da5ba6e67860db9b76')

build() {
   mkdir build
   cd build
 
   cmake ../$_customname \
     -DCMAKE_BUILD_TYPE=Release \
     -DCMAKE_INSTALL_PREFIX=/usr \
     -DCMAKE_INSTALL_LIBDIR=/usr/lib \
     -DQT_QMAKE_EXECUTABLE=qmake-qt4
}

package() {
   make -C build DESTDIR="$pkgdir" LIBDIR=/usr/lib install
   chrpath -d "$pkgdir"/usr/lib/kadu/plugins/*.so
}
