# Contributor: Balló György <ballogyor+arch at gmail dot com>

pkgname=fsharp
pkgver=3.1.1.27
pkgrel=1
pkgdesc="The F Sharp compiler, core library and tools (open source edition)"
arch=('any')
url="http://fsharp.org/"
license=('Apache')
depends=('mono')
source=($pkgname-$pkgver.tar.gz::https://github.com/fsharp/$pkgname/archive/$pkgver.tar.gz)
md5sums=('8ca19553febab963fc807efceca3c133')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
