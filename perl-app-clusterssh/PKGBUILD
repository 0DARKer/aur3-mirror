# Contributor: Erik Johnson (palehose at gmail dot com)
pkgname=perl-app-clusterssh
pkgver="4.00_11"
pkgrel=1
pkgdesc="Perl/CPAN Module to allow you to enter commands on multiple SSH sessions at once"
arch=('any')
url="http://search.cpan.org/~duncs/App-ClusterSSH-${pkgver}/"
license=('GPL Artistic')
depends=('perl>=5.10.0' 'perl-tk' 'perl-x11-protocol' 'xterm' 'perl-test-pod' 'perl-test-pod-coverage' 'perl-test-trap' 'perl-data-dump' 'perl-test-tester')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://search.cpan.org/CPAN/authors/id/D/DU/DUNCS/App-ClusterSSH-${pkgver}.tar.gz")
md5sums=('c9dcaa72ee07f85306eabc2598212504')

build() {
  cd "$srcdir/App-ClusterSSH-$pkgver"

  # install module in vendor directories.
  perl Build.PL installdirs=vendor
  ./Build
  ./Build test
  ./Build install destdir=${pkgdir}
}

