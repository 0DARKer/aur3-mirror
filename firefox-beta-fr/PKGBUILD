# Maintainer: Splashy <splash@open-web.fr>

pkgname=firefox-beta-fr
pkgver=4.0rc1
pkgdesc='Navigateur web de la fondation mozilla, binaires français en version bêta.'
pkgrel=1
arch=('i686' 'x86_64')
url='http://www.mozilla.org/projects/firefox'
license=('MPL' 'GPL' 'LGPL')
depends=( 'desktop-file-utils' 'libxt' 'mime-types' 'nss' 'shared-mime-info' )
makedepends=('wget')
conflicts=('firefox-beta-bin')
fxver=4.0rc1
source=("http://releases.mozilla.org/pub/mozilla.org/firefox/releases/${fxver}/linux-${CARCH}/fr/firefox-${fxver}.tar.bz2"
"firefox.desktop" "firefox-safe.desktop")
md5sums=('af4e61e690be3db68756f4ec5f0c307a'
         '0b06efe323e71f494611f54419b072b3'
         'eaa96c240520a8ace5adaf877c27427a')

[[ "$CARCH" == "i686" ]] && md5sums[0]="14e13075f4eb677a41e551ded09f1f03"

build() {
	cd $srcdir
#       uncomment this line to remove them if you want
#       rm -rf $_pkgname/{extensions,plugins,searchplugins}
	mkdir -p $pkgdir/{usr/{bin,share/{applications,pixmaps}},opt} 
	cp -r firefox $pkgdir/opt/firefox-$pkgver 

	ln -s /opt/firefox-$pkgver/firefox $pkgdir/usr/bin/firefox
        install -m644 $srcdir/{firefox.desktop,firefox-safe.desktop} $pkgdir/usr/share/applications/ 
        install -m644 $srcdir/firefox/icons/mozicon128.png $pkgdir/usr/share/pixmaps/firefox}-icon.png


}

