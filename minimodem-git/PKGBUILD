# Maintainer: Lukas Epple <post@lukasepple.de>

pkgname=minimodem-git
bearpkgname=minimodem
pkgver=minimodem.0.19.1.r1.g3c5ac88
pkgrel=1
pkgdesc="general-purpose software audio FSK modem"
arch=('i686' 'x86_64')
url="http://www.whence.com/minimodem/"
license=('GPLv3')
depends=('libpulse' 'alsa-lib' 'fftw')
makedepends=('git')
conflicts=('minimodem')
provides=('minimodem')
source=(git+https://github.com/kamalmostafa/minimodem.git)
md5sums=(SKIP)

pkgver() {
  cd "$srcdir/$bearpkgname"
  # Use the tag of the last commit
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir/$bearpkgname"
  ./configure --prefix=/usr
  make
}

check() {
  cd "$srcdir/$bearpkgname"
  make check
}
package() {
  cd "$srcdir/$bearpkgname"
  make DESTDIR="$pkgdir" install
}
