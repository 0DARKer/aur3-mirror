# Maintainer: Jipuf <jipuf@gmx.fr>

pkgname="yaf"
pkgver="0.1.6"
pkgrel=3
pkgdesc="YAF Core Library, Flow Sensor and Fragment Reassembler"
arch=('i686' 'x86_64')
url='http://aircert.sourceforge.net/yaf'
license=('GPL')
depends=('glib2>=2.6.4' 'libairframe>=0.6.2' 'libfixbuf>=0.4.1')
source=("http://downloads.sourceforge.net/sourceforge/aircert/$pkgname-$pkgver.tar.gz")
md5sums=('5b80d1e80e0e29f3f865ab9560cafccb')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
