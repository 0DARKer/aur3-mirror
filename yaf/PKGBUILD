# Maintainer: Jipuf <jipuf@gmx.fr>

pkgname="yaf"
pkgver="2.6.0"
pkgrel=1
pkgdesc="Yet Another Flowmeter. Processes packet data from pcap dumpfiles as generated by tcpdump or via live captures from an interface"
arch=('i686' 'x86_64')
url='https://tools.netsa.cert.org/yaf/'
license=('GPL')
depends=('glib2>=2.6.4' 'libpcap' 'libfixbuf-netsa>=1.0.0')
source=("https://tools.netsa.cert.org/releases/$pkgname-$pkgver.tar.gz")
md5sums=('5e2dd0430db21ba7f7c3b28b38a9a7ac')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
