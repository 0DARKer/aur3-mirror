# Maintainer: TuxSpirit<tuxpsirit@archlinux.fr> 2008/07/10 23:30:00 CET
# Contributor: mightyjaym <jm.ambrosino@free.fr> 2008/07/11 20:25 CET, for 64 bit

pkgname=balz
pkgver=1.15
pkgrel=2
pkgdesc="BALZ is a command-line file compressor with a high compression ratio and fast decompression."
arch=('i686' 'x86_64')
license=('GPL')
url="http://balz.sourceforge.net"
depends=('gcc-libs')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/${pkgname}-${pkgver}.tar.gz)
md5sums=('e28f268081b63238021d5326c3709fdd')
options=(!emptydirs)
install=${pkgname}.install
build() {

  cd ${startdir}/src/${pkgname}-${pkgver}/src
  g++ balz.cpp -o balz -Wall
  install -D -m 755 ${startdir}/src/${pkgname}-${pkgver}/src/${pkgname} ${startdir}/pkg/usr/bin/${pkgname}

}
