#Contributor: Hugo Barros <kuvalski@gmail.com>

pkgname=subdownloader-bzr
pkgver=20080917
pkgrel=2
pkgdesc="This is the Bazzar branch of SubDownloader."
arch=('i686' 'x86_64')
url="https://launchpad.net/subdownloader"
license=('GPL')
depends=('python' 'mmpython' 'pyqt' )
makedepends=('bzr')
provides=('subdownloader')
conflicts=('subdownloader')
source=()
md5sums=()


build() {
  
  cd ${startdir}/src

  bzr branch lp:subdownloader

  cd ${startdir}/src/subdownloader

  install -Dm755 run.py ${startdir}/pkg/usr/share/subdownloader/run.py
  install -Dm644 subdownloader.desktop  ${startdir}/pkg/usr/share/applications/subdownloader.desktop
  mkdir ${startdir}/pkg/usr/share/subdownloader
  rm subdownloader.desktop run.py
  rm -r distribution

  cp -R * ${startdir}/pkg/usr/share/subdownloader
  mkdir -p ${startdir}/pkg/usr/bin/
  ln -s ${startdir}/pkg/usr/share/subdownloader/run.py ${startdir}/pkg/usr/bin/subdownloader
}

# vim:set ts=2 sw=2 et:
