# Maintainer: cga <cga@cga.cx>

pkgname="vim-nginx"
pkgver="0.3.2"
pkgrel="1"
pkgdesc="Nginx syntax highlight for vim"
_scriptid="1886"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=1886"
license=('custom')
depends=('vim')
groups=('vim-plugins')

source=(nginx.vim::http://www.vim.org/scripts/download_script.php?src_id="$_scriptid"
	ftdetect.vim)

md5sums=('c24db47620d1a98b04b2d592bbb79778'
	'57d90e65706bdbb3367061c2be3ec71c')

package() {
	cd "$srcdir"
	install -Dm644 nginx.vim "$pkgdir/usr/share/vim/vimfiles/syntax/nginx.vim"
	install -Dm644 ftdetect.vim "$pkgdir/usr/share/vim/vimfiles/ftdetect/nginx.vim"
}
