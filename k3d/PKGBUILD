# Contributor: Gino Pezzin <pezzin@gmail.com>
pkgname=k3d
pkgver=0.6.7.0
pkgrel=1
pkgdesc="k-3d is a complete free-as-in-freedom 3D modeling, animation and rendering system."
arch=('i686' 'x86_64')
url="http://www.k-3d.org/wiki/Main_Page"
license="GPL"
depends=('expat' 'libxml2' 'gtkmm' 'gtkglext' 'libsigc++2.0' 'python' 'imagemagick' 'openexr' 'freetype2' 'plib' 'libtiff' 'graphviz' 'gts' 'libgnome' 'mesa' 'boost')
source=(http://dl.sourceforge.net/$pkgname/$pkgname-$pkgver-src.tar.bz2)
md5sums=('0031402206dab46b563d149eac2324db')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -d -m755 $startdir/pkg/usr/share/{$pkgname/shaders/layered/,pixmaps,applications}
	install -m644 $startdir/pkg/usr/share/k3d/desktop/$pkgname.desktop $startdir/pkg/usr/share/applications/$pkgname.desktop
find $startdir/pkg -name '*.la' -exec rm {} \;
}
