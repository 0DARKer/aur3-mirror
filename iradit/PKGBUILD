pkgname=iradit
pkgver=1.0beta
pkgrel=2
pkgdesc="iRadit es un proyecto de software libre para la automatizaci√≥n de emisoras de radio."
arch=('x86_64')
url="http://www.radit.org/net"
license=('GPL')
install=iradit.install
depends=('qt4' 'libtaginfo' 'lame' 'vorbis-tools')

#optdepends=('')
#md5sums=('SKIP') 
#if [ "$CARCH" == x86_64 ]; then
#	source=()
#	md5sums=('')
#elif [ "$CARCH" == i686 ]; then
#	source=()
#	md5sums=('')
#fi

source=(https://dl.dropboxusercontent.com/u/148494036/GNU-Linux/Radit/iradit-x86_64.tar.gz)
md5sums=('2287d29991f8e3e4d3eb8d4d754429dd')

package() {

    cd $srcdir/$pkgname-$CARCH

    install -d $pkgdir/{opt/$pkgname,usr/bin}
    cp -a $srcdir/$pkgname-$CARCH/opt/iradit/ $pkgdir/opt
    cp -u $srcdir/$pkgname-$CARCH/usr/bin/* $pkgdir/usr/bin

    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/pixmaps/iradit.png $pkgdir/usr/share/pixmaps/iradit.png
    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/applications/iRadit.desktop $pkgdir/usr/share/applications/iRadit.desktop

    chmod -R ugo+rX $pkgdir/opt
   
} 

    
    



