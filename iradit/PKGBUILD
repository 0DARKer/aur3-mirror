# Maintainer:  jfperini <@jfperini>
# Contributor: jfperini <@jfperini>

pkgname=iradit
pkgver=1.0.1
pkgrel=1
pkgdesc="iRadit es un proyecto de software libre para el operador de radio."
url="http://www.radit.org/net"
arch=('i686' 'x86_64')
license=('GPL')
install=iradit.install
depends=('qt4' 'libtaginfo' 'lame' 'vorbis-tools' 'radit-essential')
md5sums=('SKIP') 
if [ "$CARCH" == x86_64 ]; then
	source=(https://dl.dropboxusercontent.com/u/148494036/GNU-Linux/Radit/iradit-x86_64.tar.gz)
	md5sums=('9099981c29b1678402eb541090382e07')
elif [ "$CARCH" == i686 ]; then
	source=(https://dl.dropboxusercontent.com/u/148494036/GNU-Linux/Radit/iradit-i686.tar.gz)
	md5sums=('d2b488a38715249b9e98fe775f4fc737')
fi


package() {

    cd "$srcdir/$pkgname-$CARCH"

    install -d $pkgdir/{opt/$pkgname,usr/bin}
    cp -a "$srcdir/$pkgname-$CARCH/opt/$pkgname/" "$pkgdir/opt"
    cp -u "$srcdir/$pkgname-$CARCH/usr/bin/$pkgname" "$pkgdir/usr/bin"

    install -Dm644 "$srcdir/$pkgname-$CARCH/usr/share/pixmaps/$pkgname.svg" "$pkgdir/usr/share/pixmaps/$pkgname.svg"
    install -Dm644 "$srcdir/$pkgname-$CARCH/usr/share/applications/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"

    chmod -R ugo+rX "$pkgdir/opt"
   
} 

    
    



