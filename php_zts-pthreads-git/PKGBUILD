# Maintainer: Boris Momčilović <boris.momcilovic@gmail.com>

pkgname=php_zts-pthreads-git
pkgver=20140324
pkgrel=1
pkgdesc="Threading for PHP - Share Nothing, Do Everything :)"
arch=('i686' 'x86_64')
url="https://github.com/krakjoe/pthreads"
license=('PHP')
makedepends=('git')
depends=('php_zts')
_ininame="pthreads.ini"
_inifile="etc/php_zts/conf.d/$_ininame"
backup=("$_inifile")

_gitroot=${url}.git
_gitname=pthreads

build() {
    cd "$srcdir"
    msg "Connecting to GIT server...."

    if [[ -d "$_gitname" ]]; then
        cd "$_gitname" && git pull origin
        msg "The local files are updated."
    else
        git clone "$_gitroot" "$_gitname"
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting build..."

    cd ${srcdir}/${_gitname}

    phpize
    ./configure --with-php-config=/usr/bin/php-zts/php-config --prefix=/usr
    make
    #make test
}

package() {
    cd $srcdir/pthreads

    make INSTALL_ROOT="$pkgdir" install
    echo ";extension=pthreads.so" > "$_ininame"
    install -vDm644 "$_ininame" "$pkgdir/$_inifile"
}
