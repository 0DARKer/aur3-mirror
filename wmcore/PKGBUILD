# Maintainer: Mario Bl√§ttermann <mariobl@gnome.org>

pkgname=wmcore
pkgver=0.0.2
pkgrel=1
pkgdesc="Shows the usage of each core in the system"
arch=('i686' 'x86_64')
url="http://www.bitmania.de/index.php?blog=35"
license=('GPL')
groups=('x11')
depends=('libxext')
source=(http://www.dockapps.org/download.php/id/853/$pkgname_$pkgver.tar.gz)
md5sums=(902e0be970c0371b8ec4b44f82271917)

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  mkdir -p $startdir/pkg/usr/bin/
  install -c $pkgname $startdir/pkg/usr/bin/
  cd ..
  mkdir -p $startdir/pkg/usr/share/doc/$pkgname/
  install -c README $startdir/pkg/usr/share/doc/$pkgname
}

# vim:set ts=2 sw=2 et:
