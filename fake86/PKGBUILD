# Maintainer: attila589 <attila589 at gmail dot com>

pkgname=fake86
pkgver=0.11.6.14
pkgrel=1
pkgdesc="An 8086 PC emulator written in C"
arch=('i686' 'x86_64')
url="http://fake86.rubbermallet.org/"
depends=("sdl")
license=('unknown')
source=(http://fake86.rubbermallet.org/release/${pkgname}-${pkgver}.tar.gz)
md5sums=('a68accedc53d906676d4b02d9d1eff69')
sha256sums=('80298a4f96acd9bd091d8473c9f98acce8a450befe59b05fe38aa6874e0c8fc7')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./build.sh
}
package() {
  install -Dm755 ${srcdir}/${pkgname}-${pkgver}/fake86 ${pkgdir}/usr/bin/fake86
  install -Dm755 ${srcdir}/${pkgname}-${pkgver}/imagegen ${pkgdir}/usr/bin/imagegen
}