# Maintainer: Naman Bharadwaj <namanbharadwaj@gmail.com>

pkgname=lean-bin
pkgver=0.2.0.20150325141801
pkgrel=1
pkgdesc="Lean Theorem Prover"
arch=('x86_64' 'i386')
url="http://leanprover.github.io/"
license=('Apache')
groups=('base-devel')
depends=('lua>=5.2')
optdepends=('emacs: emacs mode')
source_x86_64=("https://launchpad.net/~leanprover/+archive/ubuntu/lean/+files/lean_0.2.0.20150325141801.git5f1d827b2629e642e7f1c9d9969544111d511488~14.10_amd64.deb")
source_i386=("https://launchpad.net/~leanprover/+archive/ubuntu/lean/+files/lean_0.2.0.20150325141801.git5f1d827b2629e642e7f1c9d9969544111d511488~14.10_i386.deb")
sha1sums_x86_64=("69bd7edc152adb2731d374995e3a104851451b7b")
sha1sums_i386=("12a278b2f8d5625564b4605fe2cb9637642421a4")

package() {
  mkdir -p "$pkgname-$pkgver"
  tar xf data.tar.xz -C "$pkgname-$pkgver"
  find "$pkgname-$pkgver" -exec chmod 755 {} \;
  cp -r "$pkgname-$pkgver"/* "$pkgdir"
  ln -s /usr/lib/liblua.so "$pkgdir"/usr/lib/liblua5.2.so.0
}
