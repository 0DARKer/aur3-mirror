pkgname=duma
pkgver=2.5.14
pkgrel=2
pkgdesc="Multi-platform memory debugging library (Detect Unintended Memory Access)"
arch=(i686 x86_64)
url="http://duma.sourceforge.net/"
license=('GPL')
depends=()
_pkgver=`echo ${pkgver} | tr . _`
source="http://voxel.dl.sourceforge.net/sourceforge/${pkgname}/${pkgname}_${_pkgver}.tar.gz"
md5sums=('d25ea8b10fe3611b9c86d2b3a523e1d2')

build(){
  cd ${startdir}/src/${pkgname}_${_pkgver}
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
  cp duma_hlp.h ${startdir}/pkg/usr/include
}
