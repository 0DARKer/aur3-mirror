# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=battlejump
pkgver=0.10.3
pkgrel=1
pkgdesc="Arcade game inspired by Monster Farm Jump."
[ "$CARCH" = "i686"   ] && ARCH=x86
[ "$CARCH" = "x86_64" ] && ARCH=x64
arch=('i686' 'x86_64')
url="http://www.battlejump.com" 
license="cc-by-nc-sa"
depends=('sdl_mixer' 'curl' 'java-runtime')
source=(http://www.battlejump.com/Download/Battle_Jump_last_Linux_${ARCH}.tar.gz battlejumplauncher.desktop)
md5sums=(1551486461204bcfa9c971c2165c0e12 1e72b63e4b9999a4a174c3ded84bf82e)
[ "$CARCH" = "x86_64" ]  && md5sums=(c5c01e8c334acbd717b19e68d15bb086 1e72b63e4b9999a4a174c3ded84bf82e)


build() { 
	cd ${srcdir}/Battle*
        mkdir -p ${pkgdir}/usr/bin
        mkdir -p ${pkgdir}/usr/share/{battlejump,applications}
        cp -R * ${pkgdir}/usr/share/battlejump 
	chmod 755 -R ${pkgdir}/usr/share/battlejump
	echo "cd '/usr/share/battlejump/' && ./BattleJumpLauncher" > ${pkgdir}/usr/bin/battlejumplauncher.sh
	chmod +x ${pkgdir}/usr/bin/*
        chmod 777 ${pkgdir}/usr/share/battlejump/Data/*dat
        install ${srcdir}/battlejumplauncher.desktop ${pkgdir}/usr/share/applications

}
