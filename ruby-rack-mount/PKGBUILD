# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rack-mount
pkgver=0.7.1
pkgrel=1
pkgdesc="Stackable dynamic tree based Rack router."
arch=(any)
url="http://github.com/josh/rack-mount"
license=('MIT')
depends=('ruby' 'ruby-rack')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/rack-mount-$pkgver.gem)
noextract=(rack-mount-$pkgver.gem)
md5sums=('b16ba9ca7b41219c07b01af094b01772')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" rack-mount-$pkgver.gem
}
