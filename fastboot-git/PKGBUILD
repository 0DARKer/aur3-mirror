# Maintainer: 謝致邦 <Yeking@Red54.com>

pkgname=fastboot-git
pkgver=20130531
pkgrel=1
pkgdesc="fastboot (Fastboot protocol CLI tool), an Android platform tool"
arch=('i686' 'x86_64' 'armv7h')
url="http://tools.android.com/"
license=('Apache')
depends=('zlib')
makedepends=('git')
provides=('fastboot')
conflicts=('fastboot')
source=("git+https://android.googlesource.com/platform/system/core"
        "git+https://android.googlesource.com/platform/system/extras"
        "git+https://android.googlesource.com/platform/external/libselinux"
        'fastbootMakefile')
md5sums=('SKIP'
         'SKIP'
         'SKIP'
         'cd1a1a9d16b523119245bfe17120d73b')

build() {
  cd "${srcdir}"/core/fastboot
  mv ../../fastbootMakefile makefile
  make
}

package(){
  install -Dm755 "${srcdir}"/core/fastboot/fastboot "${pkgdir}"/usr/bin/fastboot
}
