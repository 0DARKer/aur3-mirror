# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=perftest
pkgver=1.3.0
_subver=0.56
_commit=gd6f6093
pkgrel=1
pkgdesc="InfiniBand performance tests"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('bash' 'libibumad' 'librdmacm')
source=("http://www.openfabrics.org/downloads/${pkgname}/${pkgname}-${pkgver}-${_subver}.${_commit}.tar.gz")
md5sums=('9ab9f1ca36dd47eb184196c552dd2587')
sha512sums=('257696eeef4e32584b0f6e89405446d0496035a13765ec916406bec6e33e6f737f1ad27bd0eebfd25dc5e54718559fe130f225deea332584b0d614e85375dd4e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p "${pkgdir}/usr/bin"
  cp ib_* rdma_bw rdma_lat "${pkgdir}/usr/bin"
  install -Dm755 runme "${pkgdir}/usr/share/${pkgname}/runme"
  install -Dm644 README "${pkgdir}/usr/share/${pkgname}/README"
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
