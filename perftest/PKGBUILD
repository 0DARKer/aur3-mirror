# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=perftest
pkgver=2.0
_subver=0.8
_commit=gaeb562e
pkgrel=2
pkgdesc="InfiniBand performance tests"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('bash' 'libibumad' 'librdmacm')
source=("http://www.openfabrics.org/downloads/${pkgname}/${pkgname}-${pkgver}-${_subver}.${_commit}.tar.gz")
# cksum start
md5sums=('8f8e950d6c229de8bb29e585eb2df0c6')
sha512sums=('3a5579a0e1739a249c8f43427c3f1600c64c1329ae6005b53341e297b3cfa91a99e38ae21c94f249b5a2fe459bb3b421811008583f2bceab783e7fdbc535eadf')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p "${pkgdir}/usr/bin"
  install -Dm755 ib_* "${pkgdir}/usr/bin"
  install -Dm755 runme "${pkgdir}/usr/share/${pkgname}/runme"
  install -Dm644 README "${pkgdir}/usr/share/${pkgname}/README"
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
