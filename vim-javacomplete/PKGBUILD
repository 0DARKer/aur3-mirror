# Contributor: Jan Stępień <jstepien@users.sourceforge.net>

pkgname=vim-javacomplete
pkgver=0.77.1
_scriptid=7716
pkgrel=3
pkgdesc="Omni Completion for JAVA"
arch=(any)
url="http://www.vim.org/scripts/script.php?script_id=1785"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
	license.txt)
md5sums=('4f3d7a20a68d36be0f20ef3e769b2e15'
	'efbd5986e691ce8c876fb86e8f5961ea')

build() {
	install -d ${pkgdir}/usr/share/vim/vim72/{doc,autoload}
	install -Dm755 ${srcdir}/doc/* ${pkgdir}/usr/share/vim/vim72/doc/ || \
		return 1
	install -Dm755 ${srcdir}/autoload/* \
		${pkgdir}/usr/share/vim/vim72/autoload/ || return 1
	install -Dm755 ${srcdir}/license.txt \
		${pkgdir}/usr/share/licenses/${pkgname}/license.txt || return 1
}
