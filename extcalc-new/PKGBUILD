pkgname=extcalc-new
_realname=extcalc
pkgver=0.9.3
pkgrel=1
pkgdesc="A multifunctional scientific graphic calculator"
arch=('i686' 'x86_64')
url="http://extcalc-linux.sourceforge.net"
license=('GPL')
depends=('mesa' 'qt')
makedepends=('cmake')
conflicts=('extcalc')
provides=('extcalc')
source=('http://downloads.sourceforge.net/project/extcalc-linux/extcalc-linux/0.9.3/extcalc-0.9.3-1.tar.gz' 'CMakeLists.txt.patch')

md5sums=('efe53d36c8f1f1811ab46ed1a6e0e240'
         '7eff890881144df22db09a750bd63198')


build() {
	cd $srcdir/$_realname-$pkgver-1 || return 1
        patch CMakeLists.txt < $srcdir/CMakeLists.txt.patch || return 1
	cmake . || return 1
	make || return 1
	make DESTDIR=$pkgdir install || return 1
} 

