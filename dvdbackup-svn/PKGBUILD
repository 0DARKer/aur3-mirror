# Contributor: Iven Day <ivenvd@gmail.com>

pkgname=dvdbackup-svn
pkgver=2009.09.09
pkgrel=1
pkgdesc="Backup contents of video-dvd to harddisk"
arch=('i686' 'x86_64')
depends=('glib2' 'libdvdread-dvdfilestat')
makedepends=('subversion' 'pkgconfig' 'gettext' 'autoconf')
conflicts=('dvdbackup')
provides=('dvdbackup')
license=("GPL")
url=http://dvdbackup.sourceforge.net/

build() {
  cd $startdir/src
  msg "SVN Checkout..."
  svn co https://dvdbackup.svn.sourceforge.net/svnroot/dvdbackup/trunk dvdbackup || return 1
  cd dvdbackup || return 1
  msg "Starting build..."
  autopoint || return 1
  autoreconf --install || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}

