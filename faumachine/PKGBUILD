# Contributor: Thomas Karmann <thomas@krmnn.de>

pkgname=faumachine
pkgver=20090219
pkgrel=1
pkgdesc="FAUmachine is an Open Source Virtual Machine"
arch=('i686')
url="http://www3.informatik.uni-erlangen.de/Research/FAUmachine/"
license=('GPL')
depends=('fauhdlc' 'faucc' 'gtk2' 'libtheora' 'zenity' 'make')
makedepends=('autoconf' 'automake' 'pkgconfig' 'xmlto')
source=(http://www3.informatik.uni-erlangen.de/Research/FAUmachine/downloads/${pkgname}-${pkgver}.tar.gz)
md5sums=('f9ff502e4f054b5d5393c2294282b942')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./autogen.sh
  ./configure --prefix=/usr --mandir=/usr/share/man
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
