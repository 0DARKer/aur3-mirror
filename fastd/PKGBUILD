pkgname=fastd
arch=(i686 x86_64)
pkgver=0.3
pkgrel=1
pkgdesc="Fast and secure tunneling daemon"
makedepends=('cmake' 'flex' 'bison' 'libuecc' 'nacl')
depends=('glibc')
url="https://projects.universe-factory.net/projects/fastd"
license=('BSD2')
source=("https://projects.universe-factory.net/attachments/download/3/${pkgname}-${pkgver}.tar.bz2")
md5sums=('6b67a6868e12d1dca830380ab8cf77f3')

build() {
  mkdir -p "$srcdir/build-${pkgver}"
  cd "$srcdir/build-${pkgver}"

  cmake -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/usr "../${pkgname}-${pkgver}"
  make
}

package() {
  cd "$srcdir/build-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
