pkgname=fastd
arch=(i686 x86_64)
_pkgver=0.5-rc2
pkgver=0.4+0.5_rc2
pkgrel=1
pkgdesc="Fast and secure tunneling daemon"
makedepends=('cmake' 'flex' 'bison' 'libuecc' 'nacl')
depends=('glibc')
url="https://projects.universe-factory.net/projects/fastd"
license=('BSD')
source=("https://projects.universe-factory.net/attachments/download/32/${pkgname}-${_pkgver}.tar.bz2")
md5sums=('74b2ab08f90303f8ae1937e99c734134')

build() {
  mkdir -p "$srcdir/build-${pkgver}"
  cd "$srcdir/build-${pkgver}"

  cmake -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/usr "../${pkgname}-${_pkgver}"
  make
}

package() {
  cd "$srcdir/build-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
