pkgname=fastd
arch=(i686 x86_64)
_pkgver=0.5-rc4
pkgver=0.4+0.5_rc4
pkgrel=1
pkgdesc="Fast and secure tunneling daemon"
makedepends=('cmake' 'flex' 'bison' 'libuecc' 'libnacl')
depends=('glibc')
url="https://projects.universe-factory.net/projects/fastd"
license=('BSD')
source=("https://projects.universe-factory.net/attachments/download/34/${pkgname}-${_pkgver}.tar.bz2")
md5sums=('f341811a69146e1befc14a7920781511')

build() {
  mkdir -p "$srcdir/build-${pkgver}"
  cd "$srcdir/build-${pkgver}"

  cmake -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/usr "../${pkgname}-${_pkgver}"
  make
}

package() {
  cd "$srcdir/build-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
