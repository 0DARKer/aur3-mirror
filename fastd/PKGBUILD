pkgname=fastd
arch=(i686 x86_64)
pkgver=0.2
pkgrel=1
pkgdesc="Fast and secure tunneling daemon"
makedepends=('cmake' 'flex' 'bison' 'libuecc' 'nacl')
url="http://git.universe-factory.net/fastd/"
license=('BSD2')
source=("http://git.universe-factory.net/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.bz2")
md5sums=('5f4af4e93ad458019989168597354ab1')

build() {
  mkdir -p "$srcdir/build"
  cd "$srcdir/build"

  cmake -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/usr "../${pkgname}-${pkgver}"
  make
}

package() {
  cd "$srcdir/build"
  make install DESTDIR="${pkgdir}"
}
