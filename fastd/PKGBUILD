pkgname=fastd
arch=(i686 x86_64)
pkgver=6
pkgrel=2
pkgdesc="Fast and secure tunneling daemon"
makedepends=('cmake' 'flex' 'bison' 'libuecc=2' 'libnacl')
depends=('glibc')
url="https://projects.universe-factory.net/projects/fastd"
license=('BSD')
source=("https://projects.universe-factory.net/attachments/download/36/${pkgname}-${pkgver}.tar.xz")
md5sums=('91c871830b2ceeaf54470332825844c7')

build() {
  mkdir -p "$srcdir/build-${pkgver}"
  cd "$srcdir/build-${pkgver}"

  cmake -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/usr -D UECC_INCLUDE_DIR=/usr/include/libuecc-2 "../${pkgname}-${pkgver}"
  make
}

package() {
  cd "$srcdir/build-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
