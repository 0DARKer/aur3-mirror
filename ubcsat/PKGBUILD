# Contributor: Arthur Danskin <arthurdanskin@gmail.com>
pkgname=ubcsat
pkgver=1.0.0
pkgrel=2
pkgdesc="A collection of stochastic SAT solvers"
url="http://www.satlib.org/ubcsat/"
license="custom"
arch=(i686 x86_64)
depends=(glibc)
makedepends=(gcc)
source=(http://www.satlib.org/ubcsat/ubcsat-1-0-0.tar.gz)
md5sums=(4093d307fd5a1f14f44a8726a07d29de)

build() {
  cd $startdir/src/
  rm ubcsat
  make || return 1
  install -D -m755 ubcsat $startdir/pkg/usr/bin/ubcsat
  install -D -m644 legal.txt $startdir/pkg/usr/share/licenses/ubcsat/legal.txt
}
