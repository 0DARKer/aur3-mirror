pkgname=backupninja
pkgver=0.9.10
pkgrel=1
pkgdesc="A centralized way to configure and schedule many different backup utilities"
arch=('i686' 'x86_64')
url="https://labs.riseup.net/code/projects/backupninja"
license=('GPL')
depends=('bash' 'gawk')
optdepends=('rdiff-backup: rdiff backups' 'gzip' 'hwinfo')
source=(https://labs.riseup.net/code/attachments/download/242/backupninja-${pkgver}.tar.gz)
md5sums=('1cbae15dcd41f196b62ea183749f1473')

build() {
  cd "$srcdir/backupninja-$pkgver"

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc --mandir=/usr/share/man
  make
}

package() {
  cd "$srcdir/backupninja-$pkgver"
  make DESTDIR="$pkgdir" install
}
