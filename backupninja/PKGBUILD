# Contributor: mathieui <mathieui@gmail.com>

pkgname=backupninja
pkgver=0.9.8
pkgrel=1
pkgdesc="A centralized way to configure and schedule many different backup utilities"
arch=('i686' 'x86_64')
url="http://dev.riseup.net/backupninja/"
license=('GPL')
depends=('bash' 'gawk')
provides=(backupninja)
source=(https://labs.riseup.net/code/attachments/download/188/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=(012b8797375b484fdfa4d844de5ca9db)

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc --mandir=/usr/share/man
  make || return 1
  make DESTDIR="$startdir/pkg" install
}
