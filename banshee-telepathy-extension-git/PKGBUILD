
# Maintainer: nuovodna <nuovodna at gmail dot com>

pkgname=banshee-telepathy-extension-git
pkgver=20091221
pkgrel=1
pkgdesc="Telepathy Banshee plugin"
arch=('i686' 'x86_64')
url="http://github.com/nloko/banshee-telepathy-extension"
license=('GPL')
depends=('banshee' 'telepathy-gabble' 'mono' 'empathy' 'telepathy-mission-control')
provides=('banshee-telepathy-extension')
source=()
md5sums=()

_gitroot="git://github.com/nloko/banshee-telepathy-extension.git"
_gitname="banshee-telepathy-extension"

build() {
	
	msg "Connecting to repo.or.cz GIT server...."

	if [ -d $startdir/src/$_gitname ]; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."
  
	cd $startdir/src/${_gitname}
	./autogen.sh --prefix=/usr || return 1
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}


