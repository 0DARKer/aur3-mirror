# Maintainer: Aur√©lien Chabot <aurelien at chabot dot fr>

pkgname=castnow-git
pkgver=20141201
pkgrel=1
pkgdesc="A command line cast tool"
arch=('any')
makedepends=('git')
url="https://github.com/"
license=('MIT')
depends=('nodejs')
source=($pkgname::git://github.com/xat/castnow.git)
md5sums=(SKIP)

package() {
	cd $pkgname
	mkdir -p $pkgdir/usr
	npm install --user root -g --prefix="$pkgdir/usr"
	install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
