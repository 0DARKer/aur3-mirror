# Maintainer:  Gustavo Alvarez <sl1pkn07@gmail.com>

_plug=ctmf
pkgname=vapoursynth-plugin-${_plug}-git
pkgver=r1.0.g0d3b0eb
pkgrel=1
pkgdesc="Plugin for Vapoursynth: ${_plug} (GIT version)"
arch=('i686' 'x86_64')
url="http://forum.doom9.org/showthread.php?t=171213"
license=('GPL')
depends=('vapoursynth')
makedepends=('git')
provides=("vapoursynth--plugin-${_plug}")
conflicts=("vapoursynth-plugin-${_plug}")
source=("${_plug}::git+https://github.com/HolyWu/VapourSynth-CTMF.git")
md5sums=('SKIP')
_gitname="${_plug}"

pkgver() {
  cd "${_gitname}"
  echo "$(git describe --long --tags | tr - .)"
}

prepare() {
  rm -fr "${_gitname}/CTMF"{VapourSynh,VSHelper.h}
}

build() {
  cd "${_gitname}/CTMF"
  echo "all:
	  g++ -shared ${CXXFLAGS} -std=c++11 -fPIC -o lib${_plug}.so CTMF.cpp $(pkg-config --cflags vapoursynth)" > Makefile
  make
}

package(){
  cd "${_gitname}/CTMF"
  install -Dm755 "lib${_plug}.so" "${pkgdir}/usr/lib/vapoursynth/lib${_plug}.so"
  install -Dm644 ../README.md "${pkgdir}/usr/share/doc/vapoursynth/plugins/${_plug}/README.md"
}
