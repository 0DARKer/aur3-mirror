pkgname=klogic
pkgver=4.0.2
pkgrel=1
pkgdesc="A digital circuit editor and simulator for KDE"
arch=('i686' 'x86_64')
url="http://www.a-rostin.de/"
license=('GPL3')
depends=('kdebase-runtime')
makedepends=('automoc4' 'cmake')

build() {
  cd "${srcdir}"

  _pkgtar="${pkgname}-${pkgver}.tar.gz"
  _pkgmd5='072fbc982a5c1671325bba32867b735a'

  # Check KLogic archive
  if [[ ! -f ${_pkgtar} ]]; then
    msg "!! You need to manually download KLogic source code from:"
    msg "!!   http://www.a-rostin.de/"
    msg "!!"
    msg "!! Please copy ${_pkgtar} to ${srcdir}" && return 1
  else
    if [[ "$(md5sum ${_pkgtar} | awk '{print $1}')" == ${_pkgmd5} ]]; then
      msg "!! Check: ${_pkgtar} is the correct."
    else
      msg "!! Check: ${_pkgtar} didn't match md5sum. Exiting!" && return 1
    fi
  fi

  # Extract KLogic archive
  rm -rf ${pkgname}-${pkgver}
  bsdtar -xf ${_pkgtar}
  cd ${pkgname}-${pkgver}

  # Compile
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
