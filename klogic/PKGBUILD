pkgname=klogic
pkgver=1.65
pkgrel=1
pkgdesc="Digital circuit editor and simulator for KDE "
arch=('i686' 'x86_64')
license=('GPL')
url=("http://www.a-rostin.de")
source=(http://www.a-rostin.de/Version/${pkgname}-${pkgver}.tar.gz)
depends=('kdelibs3' 'qt3')
build()
{
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure --without-arts --prefix=${pkgdir}/opt/kde/ --with-qt-dir=/opt/qt/ --with-qt-includes=/opt/qt/include/ --with-qt-libraries=/opt/qt/lib/ --with-extra-includes=/opt/kde/include/ --with-extra-libs=/opt/kde/lib/ --with-gnu-ld 
    make || return 1
    make install
}
md5sums=('6369339e7c2fcdff98506b019502c36a')
