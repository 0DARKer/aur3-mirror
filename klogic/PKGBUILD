#contributor Mat√≠as J. Rossi <matiasjrossi@gmail.com>
pkgname=klogic
pkgver=1.63
pkgrel=1
pkgdesc="Digital circuit editor and simulator for KDE "
arch=('i686' 'x86_64')
license=('GPL')
url=(http://www.a-rostin.de/klogic/doc/index.html)
source=('https://launchpad.net/ubuntu/feisty/+source/klogic/1.63-1ubuntu3/+files/klogic_1.63.orig.tar.gz')
md5sums=('83b6b6eb20046bbbb6a9860d28132d16')
depends=('kdelibs3' 'qt3')
build()
{
    cd ${startdir}/src/$pkgname-$pkgver
    ./configure --without-arts --prefix=${startdir}/pkg/opt/kde/ --with-qt-dir=/opt/qt/ --with-qt-includes=/opt/qt/include/ --with-qt-libraries=/opt/qt/lib/ --with-extra-includes=/opt/kde/include/ --with-extra-libs=/opt/kde/lib/ --with-gnu-ld 
    make || return 1
    make install
}
