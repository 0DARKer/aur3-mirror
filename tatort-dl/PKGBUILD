# Maintainer: Frank Poehler <fp29129@googlemail.com>
pkgname=tatort-dl
pkgver=20120507
pkgrel=1
epoch=0
pkgdesc="A shell-scripted CLI tool for downloading films from ARD Mediathek (German Television) @ http://www.ardmediathek.de"
arch=(any)
url="http://rg42.org/wiki/tatort-dl"
license=('unknown')
depends=('curl' 'rtmpdump')
install=info.install
source=("http://rg42.org/gitweb/?p=scripts.git;a=blob_plain;f=$pkgname.sh" 'info.install')
_installdir='usr/bin'
sha256sums=('fac5a26488ab40c7dcb65ac6f47f494faee10fc999f9aac6f4e319be668c55f8'
            '5c38de7861f84d318802b0175e78c3926329689541a59e7db28e6e03f9b8b538')

build() {
  cd "$srcdir"
  mv "?p=scripts.git;a=blob_plain;f=$pkgname.sh" $pkgname
}

package() {
  cd "$srcdir"
  mkdir -p $pkgdir/$_installdir
  install -m 644 $pkgname $pkgdir/$_installdir/$pkgname
  chmod +x $pkgdir/$_installdir/$pkgname
}

# vim:set ts=2 sw=2 et:
