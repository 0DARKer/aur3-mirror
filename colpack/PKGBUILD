# Maintainer:  Thomas Zervogiannis <tzervo@gmail.com>

pkgname=colpack
pkgver=1.0.3
pkgrel=1
pkgdesc="Graph Coloring for Computing Derivatives"
url="http://www.cscapes.org/coloringpage/"
arch=('any')
license=('GPL')
depends=()
source=(http://www.cscapes.org/download/ColPack/ColPack-1.0.3.tar.gz)
md5sums=('46735b0fb8546da5f4f51f59afd1b69d')


build() {
	cd ${srcdir}/ColPack
	make
}

package() {
  install -d ${pkgdir}/usr/
  install -d ${pkgdir}/usr/lib
  install -d ${pkgdir}/usr/include
  cd ${srcdir}/ColPack/build
  for i in lib/*; do
	  install -m644 $i ${pkgdir}/usr/lib
  done
  for i in include/*; do
	  install -m644 $i ${pkgdir}/usr/include
  done
}
