# Contributor: b4283 (da.mi.spirit@gmail)

pkgname=ibus-array
pkgver=0.0.2
pkgrel=1
pkgdesc='The Array 30 input method for ibus-table.'
arch=('i686' 'x86_64')
url="http://code.google.com/p/ibus-array/"
license=('GPLv2')
depends=('ibus')
source=(http://ibus-array.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('3d5a58399ea7d774b7e94cf1981f19d8')

build() {
	cd $srcdir/${pkgname}-${pkgver}
	./configure  --prefix=/usr
	make || return 1
	make DESTDIR=$pkgdir install
}
