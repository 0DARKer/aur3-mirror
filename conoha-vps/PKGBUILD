# Maintainer: nosada <ngsksdt@gmail.com>

pkgname=conoha-vps
_cmdname=conoha
pkgver=20150223.2
pkgrel=1
pkgdesc="CLI-Tool for ConoHa VPS"
arch=("x86_64")
url="https://github.com/hironobu-s/conoha-vps"
_gourl="github.com/hironobu-s/conoha-vps"
license=("MIT")
depends=("go")
makedepends=("mercurial")

build() {
  GOPATH=${srcdir} go get ${_gourl}
  cd ${srcdir}/src/${_gourl}
  GOPATH=${srcdir} go build -o ${_cmdname}
}

package() {
  mkdir -p ${pkgdir}/usr/bin
  install -p -m755 ${srcdir}/bin/${pkgname} ${pkgdir}/usr/bin/${_cmdname}
}

# vim:set ts=2 sw=2 et:
