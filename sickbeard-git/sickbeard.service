[Unit]
Description=Sick Beard Daemon

[Service]
Type=simple
User=sickbeard
Group=sickbeard
ExecStart=/usr/bin/env python2 /opt/sickbeard/SickBeard.py --quiet --config /opt/sickbeard/config.ini --datadir /opt/sickbeard --pidfile /opt/sickbeard/sickbeard/sickbeard.pid
PIDFile=/opt/sickbeard/sickbeard/sickbeard.pid
Restart=always

[Install]
WantedBy=multi-user.target
