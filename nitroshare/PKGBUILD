# Developer: Nathan Osman <https://launchpad.net/~george-edison55>

pkgname=nitroshare
pkgver=0.1
pkgrel=1
pkgdesc="Makes sending a file to another machine on the local network as easy as dragging-and-dropping."
arch=('i686' 'x86_64')
url="https://launchpad.net/nitroshare"
license=('GNU GPL v3')
depends=('qjson')
makedepends=()
options=()
source=(https://launchpad.net/${pkgname}/0.1/0.1/+download/${pkgname}_${pkgver}.tar.gz nitroshare.desktop)
md5sums=('cb7d878b8974976cf38cae1c2878070f'
         '0f056d82aedbc47b9004649ec64c9e9e')

build () {
	cd nitroshare
	qmake
	make
}

package () {
	mkdir -p ${pkgdir}/usr/share/applications
	cp -r nitroshare ${pkgdir}/usr/share
	cp nitroshare.desktop ${pkgdir}/usr/share/applications
}
