# Maintainer: justbrowsing <developer4linux+aur@gmail.com>
pkgname=justbrowsing-firefox-profile
pkgver=20131218
pkgrel=1
pkgdesc="Firefox profile for JustBrowsing"
arch=('any')
url="https://github.com/justbrowsing/justbrowsing-firefox-profile"
license=('unknown')
depends=('justbrowsing-home')
makedepends=('unzip')
optdepends=('firefox: web browser')
source=(https://github.com/justbrowsing/justbrowsing-firefox-profile/archive/master.zip)
md5sums=('a3f8ae8ae4a29632a601346fa69a7c82')
_userdir="/usr/share/justbrowsing"
_username="justbrowsing"
_profiledir="${_userdir}/.mozilla/firefox"
_profile="oknp3n8p.default"

package() {
  cd "$srcdir/justbrowsing-firefox-profile-master"
  mkdir -p "${pkgdir}/${_profiledir}"
  install -m644 profiles.ini "${pkgdir}/${_profiledir}"
  cp -r "$_profile" "${pkgdir}/${_profiledir}"
  chown -R ${_username}:${_username} "${pkgdir}/${_profiledir}/${_profile}"
}
