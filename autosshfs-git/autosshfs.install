PREFIX="/usr"

post_install() {
    /usr/sbin/groupadd --system autosshfs # 2>/dev/null
    /bin/chgrp autosshfs ${PREFIX}/sbin/autosshfs-map
    /bin/chgrp autosshfs ${PREFIX}/sbin/autosshfs-ssh
}

post_remove() {
    /bin/rm -rf $PREFIX/sbin/autosshfs-* $PREFIX/bin/autosshfs-as-* $PREFIX/bin/keychain-ring $PREFIX/share/doc/autosshfs
    /usr/sbin/groupdel autosshfs
}
