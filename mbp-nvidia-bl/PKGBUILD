pkgname=mbp-nvidia-bl
pkgver=0.24.3
pkgrel=1
pkgdesc="Driver to adjust display backlight on modern mobile NVidia graphics adapters. (macbookpro6,2 in my case)"
arch=('i686' 'x86_64')
license=('GPL')
depends=('kernel26>=2.6.29.1-3')
makedepends=('kernel26-headers')
install=nvidia-bl.install
url="https://launchpad.net/~mactel-support/+archive/ppa"
source=('mbp_nvidia_bl.c'
        'Makefile')
md5sums=('5fd84a52653a9ba2182b7ada36ec66b5'
         '1a032b6f49258ab4c5b3b16367ecbc1b')

build() {
  cd ${srcdir}

  make || return 1

  mkdir -p /lib/modules/`uname -r`/kernel/drivers/
  install -m 644 mbp_nvidia_bl.ko /lib/modules/`uname -r`/kernel/drivers/video/backlight/mbp_nvidia_bl.ko
}
