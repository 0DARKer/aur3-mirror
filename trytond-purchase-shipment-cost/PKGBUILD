# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-purchase-shipment-cost
_pkgname=trytond_purchase_shipment_cost
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The purchase_shipment_cost module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-carrier>=3.2' 'trytond-currency>=3.2' 'trytond-stock>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("bf40033caf09f9afdde3c82f7267d998")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}