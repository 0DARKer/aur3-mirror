# Maintainer: Milos Pejovic <pejovic@gmail.com>
# Contributor: Auguste <auguste@gmail.com>

pkgname=polyglot
pkgver=1.4.63b
pkgrel=1
pkgdesc="A UCI adapter to connect a UCI chess engine to an xboard interface."
arch=('i686' 'x86_64')
url="http://alpha.uhasselt.be/Research/Algebra/Toga/"
license=('GPLv2')
source=(http://alpha.uhasselt.be/Research/Algebra/Toga/polyglot-release/polyglot-${pkgver}.tar.gz)
md5sums=('71db7ef59a4ef8737a3d1fc2f72e5a12')

build() {
    cd $srcdir/${pkgname}-${pkgver}
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=${pkgdir} install || return 1
}
