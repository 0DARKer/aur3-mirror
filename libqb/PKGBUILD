# Maintainer: Eric Renfro <erenfro@gmail.com>

pkgname=libqb
pkgver=0.17.0
pkgrel=1
pkgdesc="library with the primary purpose of providing high performance client server reusable features."
arch=('i686' 'x86_64')
url="http://clusterlabs.github.io/libqb/"
license=('GPL')
makedepends=('')
depends=('glibc')
source=("https://fedorahosted.org/releases/q/u/quarterback/libqb-${pkgver}.tar.gz")

sha256sums=('0271bc6dd1a93b802d58309dda5423e2ca659424776ee40a2d1e2b17c56bb04d')
options=('!libtool' 'docs' 'strip')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./autogen.sh
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install || return 1
}