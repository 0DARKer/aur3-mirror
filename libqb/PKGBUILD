# Maintainer: Eric Renfro <erenfro@gmail.com>

pkgname=libqb
pkgver=0.14.3
pkgrel=3
pkgdesc="library with the primary purpose of providing high performance client server reusable features."
arch=('i686' 'x86_64')
url="https://github.com/asalkeld/libqb/wiki"
license=('GPL')
makedepends=('')
depends=('')
#source=("http://hg.clusterlabs.org/pacemaker/1.1-buildbot/archive/1dbbee9bc278.tar.bz2")
source=("https://fedorahosted.org/releases/q/u/quarterback/libqb-${pkgver}.tar.gz")

md5sums=('97c6b2893c1db19760d3a1423ec09a17')
options=('!libtool' 'docs' 'strip')

build() {
	unset LDFLAGS
	_PREFIX=/usr
	_PREFIXETC=/etc
	_PREFIXINIT=${_PREFIXETC}/rc.d
	_PREFIXVAR=/var
	cd "${srcdir}/libqb-0.14.3"
	./autogen.sh
	./configure \
		--enable-fatal-warnings=no \
		--prefix=${_PREFIX} \
		--localstatedir=${_PREFIXVAR} \
		--sysconfdir=${_PREFIXETC} 
	make || return 1
	make DESTDIR="${pkgdir}" install || return 1
}
