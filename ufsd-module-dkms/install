post_install() {
	DKMS=`which dkms 2>/dev/null`

	echo ">>> DKMS: Module add, build, and install"

	$DKMS add -m ufsd-module -v 8.5.005
	$DKMS build -m ufsd-module -v 8.5.005
	$DKMS install -m ufsd-module -v 8.5.005

	/usr/bin/depmod -a

	cat <<EOF
==> For more information on this driver, see:
==> https://aur.archlinux.org/packages/ufsd-module
EOF
}

pre_upgrade() {
	pre_remove
}

pre_remove() {
	DKMS=`which dkms 2>/dev/null`
	echo ">>> DKMS: Module uninstall"

	line=`$DKMS status -m ufsd-module`
	if echo "$line" | grep -E 'added|built|installed'; then
		version="8.5.005"
		$DKMS remove ufsd-module/$version --all
	fi

	/usr/bin/depmod -a

}

post_upgrade() {
	cd usr/lib/modules
	for i in extramodules-*; do depmod $(cat "$i/version"); done
	cd ../..
}

