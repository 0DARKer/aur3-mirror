# Maintainer: TJ Vanderpoel <tj@rubyists.com>
pkgname=namecoind-git
pkgver=20110518
pkgrel=3
pkgdesc="The namecoin daemon, for pooling namecoin miners or running as an individual namecoind miner"
arch=(i686 x86_64)
url="https://github.com/vinced/"
license=('GPL')
depends=('miniupnpc' 'boost')
makedepends=('git')
source=(README.md)
md5sums=('564e2f61fd4f0b05d37899915ed49967')

_gitroot="https://github.com/vinced/namecoin.git"
_gitname="namecoin"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  make -f makefile.unix
}

package() {
  install -D -m0755 README.md "$pkgdir/usr/share/doc//namecoind/README.md"
  cd "$srcdir/$_gitname-build"
  install -D -m0755 namecoind "$pkgdir/usr/bin/namecoind"
} 
