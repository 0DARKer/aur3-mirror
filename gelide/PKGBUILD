# Contributor: kagan <juanynie AT ono DOT com>
pkgname=gelide
pkgver=0.1.5
pkgrel=2
pkgdesc="Gelide is a front-end for any emulated system"
url="http://gelide.sourceforge.net/index.php"
license=("GPL")
arch=('i686' 'x86_64')
depends=('gtkmm' 'libxml2' 'intltool' 'gnome-icon-theme' 'gnome-doc-utils')
makedepends=
source=(http://downloads.sourceforge.net/gelide/$pkgname-$pkgver.tar.gz)
md5sums=('c222b13e8d309b402a234b31f9a82ea5')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
