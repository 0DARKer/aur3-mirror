pkgname=libdv-gtk2
pkgver=1.0.0
pkgrel=1
pkgdesc="The Quasar DV codec but with a gtk2 frontend"
arch=('i686' 'x86_64')
url="http://libdv.sourceforge.net/"
license=('LGPL')
depends=('popt')
makedepends=('pkgconfig' 'gtk2' 'libxv')
optdepends=('gtk2: for using playdv' 'libxv: for using playdv')
options=('!libtool')
source=(gtk2.patch http://downloads.sourceforge.net/libdv/libdv-$pkgver.tar.gz)

build() {
  cd $srcdir
  patch -p0 -i gtk2.patch
  cd libdv-$pkgver
  autoconf || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
md5sums=('3cb0194c4fc1040c5cc8d2c767e1d57a' 'f895162161cfa4bb4a94c070a7caa6c7')
