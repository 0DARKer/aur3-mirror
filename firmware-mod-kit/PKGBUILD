pkgname=firmware-mod-kit
pkgver=0.87
pkgrel=2
pkgdesc="This kit allows for easy deconstruction and reconsutrction of firmware images for various embedded devices."
provides=('firmware-mod-kit')
source=('http://firmware-mod-kit.googlecode.com/files/fmk_087.tar.gz')
url="http://code.google.com/p/firmware-mod-kit/"
license=('GPL')
arch=('any')
md5sums=('43a3e6ddcfbe74e6f39ddc0b30008e88')
options=(!strip)

build() {
	cd $srcdir/firmware-mod-kit/src
	./configure || return 1
	make || return 1
	return 0
}

package() {
	cd $srcdir
	mkdir -p $pkgdir/opt/
	mv firmware-mod-kit $pkgdir/opt/
}


