# Maintainer: Tomasz P. <tmszppATgmailDOTcom>
pkgname=xfwm4-nodoka-theme
pkgver=0.2
pkgrel=1
pkgdesc="Nodoka theme for xfwm4"
arch=(any)
license=(GPL2)
depends=(xfwm4)
optdepends=("gtk-engine-nodoka: for matching GTK theme")
makedepends=(rpmextract)
md5sums=('d22155a12a3a33f77e8b4d3b60fb8d0b')
url=(http://pkgs.org/download/fedora-13/fedora-i386/xfwm4-theme-nodoka-0.2-1.fc13.noarch.rpm.html)
source=(http://download.fedora.redhat.com/pub/fedora/linux/releases/13/Everything/source/SRPMS/xfwm4-theme-nodoka-0.2-1.fc13.src.rpm)

build() {
	cd "$srcdir"
	rpmextract.sh xfwm4-theme-nodoka-0.2-1.fc13.src.rpm
	tar -zxf xfwm4-theme-nodoka-0.2.tar.gz
}

package() {
	cd "${pkgdir}"
	install -d -m755 usr/share/themes
	cp -r "${srcdir}/Nodoka/" usr/share/themes
	chmod -R 644 "${pkgdir}/usr/share/themes/Nodoka"
	chmod 755 "${pkgdir}/usr/share/themes/Nodoka"
	chmod 755 "${pkgdir}/usr/share/themes/Nodoka/xfwm4"
}