# Maintainer: Rikard Falkeborn <rikard.falkeborn@gmail.com>
pkgname=cpu-monitor-extension-lxpanel-plugin
pkgver=1.2
pkgrel=1
pkgdesc="Adds memory and swap usage to the default cpu usage monitor plugin in lxde panel."
arch=('i686' 'x86_64')
url="https://github.com/danamlund/cpu-monitor-extension-lxpanel-plugin"
license=('GPL2')
groups=(lxde)
depends=('lxpanel')
source=("https://github.com/danamlund/cpu-monitor-extension-lxpanel-plugin/archive/v${pkgver}.tar.gz")
#source=("https://github.com/downloads/danamlund/cpu-monitor-extension-lxpanel-plugin/$pkgname-v$pkgver.tar.gz")
md5sums=('518369476347cd2746c8bd0b00aa8c2a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/lib/lxpanel/plugins"
  make DESTDIR="$pkgdir/usr/lib/lxpanel/plugins" install
}

