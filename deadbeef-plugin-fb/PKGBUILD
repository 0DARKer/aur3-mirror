# Maintainer: Alad Wenter <the.changing.side@gmail.com>
pkgname=deadbeef-plugin-fb
pkgver=20140316
pkgrel=1
pkgdesc="Filebrowser plugin for the deadbeef audio player"
url="http://sourceforge.net/projects/deadbeef-fb/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('gtk2' 'deadbeef')
source=("http://downloads.sourceforge.net/project/deadbeef-fb/master/deadbeef-fb_${pkgver}_src.tar.gz")
sha256sums=('43ae7687dca0c54a3447a2286b6d71f0f511a23f7adb9a525ad5320e8890d8fa')

build() {
  cd $srcdir/deadbeef-devel
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/deadbeef-devel
  make DESTDIR="$pkgdir" install
}
