# Maintainer:  <clu>

pkgname=python-pysynphot  
pkgver=0.7
#stsci py release
_pkgver=2.11
pkgrel=2
pkgdesc="a synthetic photometry software package suitable for either library or interactive use"
url="https://trac6.assembla.com/astrolib"
arch=('any')
license=('BSD')
depends=('python2' 'python2-numpy>=1.0' 'python-pyfits>=1.1' 'python-matplotlib>=0.9')
makedepends=('python2' 'python2-distribute')
conflicts=()
replaces=()
backup=()
source=(http://stsdas.stsci.edu/download/stsci_python_${_pkgver}/stsci_python_${_pkgver}.tar.gz)
md5sums=('96e81a835d583de0181fa0b40e5344f6')

package() {
  cd $srcdir/stsci_python_${_pkgver}/pysynphot
  python2 setup.py install --root=$pkgdir --prefix=/usr --optimize=1
}
