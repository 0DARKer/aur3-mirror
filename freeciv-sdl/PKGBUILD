# Contributor: Jonathan Wiersma <arch aur at jonw dot org>
pkgname=freeciv-sdl
_realname=freeciv
pkgver=2.2.3
pkgrel=1
pkgdesc="A multiuser clone of the famous Microprose game of Civilization - SDL Client"
url="http://www.freeciv.org/"
arch=('i686' 'x86_64')
depends=(sdl sdl_image sdl_mixer readline freetype2)
makedepends=(pkgconfig)
#optdepends=(esd)
provides=("freeciv=$pkgver")
conflicts=('freeciv' 'freeciv-gtk')
license=(GPL)
install="$pkgname.install"
source=(http://optusnet.dl.sourceforge.net/sourceforge/freeciv/freeciv-$pkgver.tar.bz2)

build() {
  cd $srcdir/$_realname-$pkgver || return 1
  ./configure --prefix=/usr --mandir=/usr/share/man --enable-client=sdl || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  chmod 755 $pkgdir/etc || return 1
  install -D -m644 data/civclient.dsc "$pkgdir/usr/share/ggz/civclient.dsc" || return 1
}


md5sums=('b324e3c59f029d0566482f584181a4b2')
