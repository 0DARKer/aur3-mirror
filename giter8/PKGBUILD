pkgname=giter8
pkgver=0.5.3
_proptag=29e22c6aeb1e576b8e00232e91f979d81101a2f9
pkgrel=1
pkgdesc="a command line tool to apply templates defined on github"
arch=(any)
url="https://github.com/n8han/giter8"
license=('LGPL')
depends=('sbt')
options=(!emptydirs)
source=("giter8.properties_$pkgver::https://raw.github.com/typesafehub/giter8-package/$_proptag/src/main/resources/giter8.properties"
	"g8")
md5sums=('156e5ec0a45b1c91c75ea8ea6dc045d5'
         '64b19455133f8dba10f4ed441b746617')

package() {
  cd "$srcdir"
  install -D -m 664 giter8.properties_$pkgver "$pkgdir"/usr/share/scala/apps/giter8.properties
  install -D -m 775 g8 "$pkgdir"/usr/bin/g8
}

