# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=giter8
pkgver=0.6.4
_proptag=61f66e1dc9d07ee00e9e1dbfeed1a5233c547a9e
pkgrel=1
pkgdesc="a command line tool to apply templates defined on github"
arch=(any)
url="https://github.com/n8han/giter8"
license=('LGPL')
depends=('sbt')
options=(!emptydirs)
source=("giter8.properties_$pkgver::https://raw.github.com/n8han/giter8/$_proptag/src/main/conscript/g8/launchconfig"
	"g8")
md5sums=('bc2d7c6ec06008d164c713fdd14bc947'
         'de3e643189a99a3267329ff6c559eae1')

package() {
  cd "$srcdir"
  install -D -m 664 giter8.properties_$pkgver "$pkgdir"/usr/share/scala/apps/giter8.properties
  install -D -m 775 g8 "$pkgdir"/usr/bin/g8
}

