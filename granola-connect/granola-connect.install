post_install() {
  chown granola /etc/granola-connect.conf

  echo "===> Requires the granola daemon to be running before starting."
  echo "===> Put your https://grano.la/dash/ account information in the config"
  echo "===>   file /etc/granola-connect.conf as root."
}

post_upgrade() {
  post_install
}

