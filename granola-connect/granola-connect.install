post_install() {
  chown granola /etc/granola-connect.conf

  echo "===> Requires the granola daemon to be running before starting."
  echo "===> Put your http://grano.la/ account information in the config file"
  echo "===>   /etc/granola-connect.conf as root or use granola-gui to do it."
}

