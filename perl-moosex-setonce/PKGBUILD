pkgname='perl-moosex-setonce'
pkgver='0.100471'
pkgrel='1'
pkgdesc="write-once, read-many attributes for Moose"
arch=('any')
url='http://search.cpan.org/dist/MooseX-SetOnce'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-moose>=0.90' 'perl-try-tiny')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/MooseX-SetOnce-0.100471.tar.gz')
md5sums=('2772277e341baf6fccf658568fcf90fd')

build() {
  DIST_DIR="${srcdir}/MooseX-SetOnce-0.100471"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

