# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-voof
pkgver=1.4
_scriptid=11001
pkgrel=1
pkgdesc="Vim Outliner Of Folds -- two-pane outliner and related utilities"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=2657"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('d97e2497779fbacee7919b0542c45157'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/
    cp -aRf ${srcdir}/VOOF_14 ${pkgdir}/usr/share/vim/ || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

