# CPAN Name  : Text-CSV
# Contributor: Justin Davis <jrcd83 at gmail>
# Generator  : CPANPLUS::Dist::Arch 0.17
pkgname='perl-text-csv'
pkgver='1.21'
pkgrel='1'
pkgdesc="Manipulate comma-separated value strings"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
optdepends=('perl-text-csv-xs:If you install Text::CSV_XS, it makes Text::CSV faster.')
depends=('perl')
url='http://search.cpan.org/dist/Text-CSV'
source=('http://search.cpan.org/CPAN/authors/id/M/MA/MAKAMAKA/Text-CSV-1.21.tar.gz')
md5sums=('46267559f7f6e203e0a60e033c36851e')

build(){
  DIST_DIR="${srcdir}/Text-CSV-1.21"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
     perl Makefile.PL INSTALLDIRS=vendor &&
     make &&
     make test &&
     make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
