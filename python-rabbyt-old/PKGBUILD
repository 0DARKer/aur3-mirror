pkgname=python-rabbyt-old
pkgver=0.8.1
pkgrel=1
pkgdesc="A sprite library for Python targeting game development"
arch=('i686' 'x86_64')
url="http://packages.debian.org/source/sid/rabbyt"
license=('LGPL')
depends=('mesa' 'python2')
makedepends=('pyrex' 'setuptools')
conflicts=('python-rabbyt')
source=("http://ftp.debian.org/debian/pool/main/r/rabbyt/rabbyt_${pkgver}.orig.tar.gz")
md5sums=('30c143d133a6abaf8ab2ba3516ae7fc2')

package() {
  cd "${srcdir}/Rabbyt-${pkgver}"

  python2 setup.py build
  python2 setup.py install --root="${pkgdir}"
}
