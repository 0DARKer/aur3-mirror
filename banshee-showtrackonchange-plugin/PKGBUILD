# Maintainer: cdude <cdude996@hotmail.com>
pkgname=banshee-showtrackonchange-plugin
pkgver=38
pkgrel=1
pkgdesc="Displays a configurable popup on the screen when a new track begins playing"
url="http://banshee-project.org/Plugins"
license="MIT"
depends=('banshee-svn')
makedepends=('subversion')
arch=('i686')

_svntrunk=http://showtrackonchange.googlecode.com/svn/trunk
_svnmod=banshee-showtrackonchange-plugin
source=()
md5sums=()


build() {
  export MONO_SHARED_DIR=$startdir/src/.wabi
  mkdir -p $MONO_SHARED_DIR $startdir/pkg/usr/bin $startdir/pkg/usr/lib $startdir/pkg/usr/share

  cd $startdir/src

  svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  cd $_svnmod
  ./autogen.sh --enable-user-plugins --prefix=/usr


  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r ../$_svnmod ../$_svnmod-build
  cd ../$_svnmod-build

  make || return 1
  make DESTDIR=$startdir/pkg/ install

  rm -rf $MONO_SHARED_DIR
  rm -rf $startdir/src/$_svnmod-build
}
