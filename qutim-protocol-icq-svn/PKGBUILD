# Contributor: Borislav Gerassimov (slimmer) <borislavba (at) gmail.com>
pkgname=qutim-protocol-icq-svn
pkgver=136
pkgrel=1
pkgdesc="Adds support for the ICQ protocol to Qutim. SVN version"
arch=('i686' 'x86_64')
url="http://qutim.org"
license=('GPL')
depends=('qutim-svn')
makedepends=('subversion' 'gcc' 'make')
provides=('qutim-plugin-icq-svn')
replaces=('qutim-plugin-icq-svn')
conflicts=('qutim-plugin-icq-svn')

_svnmod=icq
_svntrunk=http://qutim.org/svn/$_svnmod/

build() {
msg "Downloading from $_svntrunk ..."
  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  msg2 "SVN checkout done or server timeout"

msg "Creating temporary build directory..."
  rm -rf $_svnmod-build
  cp -r $_svnmod/trunk $_svnmod-build
  cd $_svnmod-build

msg "Building and installing..."
  qmake || return 1
  make || return 1

  cd $srcdir
  install -Dm 644 $_svnmod-build/libicq.so $pkgdir/usr/lib/qutim/libicq.so || return 1

msg "Removing temporary files..."
  rm -rf $_svnmod-build
}
