# Maintainer: Nathan O <ndowens.aur at gmail dot com> 
pkgname=fossil-scm
pkgver=20110113195528947
pkgrel=1
pkgdesc="A distributed version-control, bug-tracking and wiki"
arch=('i686' 'x86_64')
license=('BSD')
url="http://www.fossil-scm.org"
depends=('openssl')
source=("http://www.fossil-scm.org/download/fossil-src-${pkgver}.tar.gz" "LICENSE")
md5sums=('0525a7adefdbec9a92fe7fea38242956'
         'd9fcfd25499b00eb0df38a43cf825b71')

build() {
	cd ${srcdir}/fossil-src-$pkgver
	make
}
package() {
	cd ${srcdir}/fossil-src-$pkgver
	install -d ${pkgdir}/usr/{bin,/share/licenses/${pkgname}}
	make INSTALLDIR=${pkgdir}/usr/bin/ install
	install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
} 
