# Maintainer: Dave Reisner <d@falconindy.com> 
# Contributor: William Giokas (KaiSforza) <1007380@gmail.com>

pkgname=libbitcoin-git
_gitname=libbitcoin
pkgver=v1.0.1.r2.1.ge32bddc
pkgrel=1
pkgdesc="libbitcoin asynchronous C++ library for Bitcoin"
arch=('i686' 'x86_64')
url="https://github.com/spesmilo/libbitcoin/"
license=('AGPL')
depends=('boost' 'openssl')
makedepends=('git' 'gcc')
conflicts=()
provides=()
# The git repo is detected by the 'git:' or 'git+' beginning. The branch
# 'pacman41' is then checked out upon cloning, expediating versioning:
#source=('git+nindy/expac.git'
source=('git+https://github.com/spesmilo/libbitcoin.git')
# Because the sources are not static, skip Git checksum:
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  # Use the tag of the last commit
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/$_gitname"
  autoreconf -i
  ./configure --prefix="/usr/"
  #./configure
  make
}

package() {
  cd $_gitname
  make DESTDIR="$pkgdir/" install
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
