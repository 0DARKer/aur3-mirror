pkgname=hib-dlagent
pkgver=0.1
pkgrel=1
pkgdesc='Tool to download Humble Indie Bundle binaries by file name'
arch=('any')
url='https://aur.archlinux.org/packages/hib-dlagent'
license=('GPL2')
depends=('curl')
source=("$pkgname")
md5sums=('dd33c369800c61c186feba4c94a2f845')

package() {
  cd "$srcdir"
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
