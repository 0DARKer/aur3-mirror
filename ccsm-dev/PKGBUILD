pkgname=ccsm-dev
pkgver=0.9.4
pkgrel=1
pkgdesc="Compizconfig Settings Manager in Python"
arch=('any')
url="http://compiz.org"
install="ccsm-dev.install"
license=('GPL')
provides=('ccsm')
conflicts=('ccsm')
depends=('compiz-core-dev' 'compizconfig-python-dev' 'pygtk')
source=("http://releases.compiz.org/$pkgver/compiz-ccsm-${pkgver}.tar.gz")
sha1sums=('52cf847dae2185bffec3e7aec27e73ca2087dbcc')

build()
{
	cd "ccsm"
	python2 setup.py build --prefix="/usr"
	python2 setup.py install --prefix="/usr" --root="${pkgdir}"
}
