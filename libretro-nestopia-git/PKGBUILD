# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-nestopia-git
_gitname=nestopia
pkgver=2013.05.18_1.43_139_gd7418a1
pkgrel=1
pkgdesc="libretro implementation of Nestopia. (Nintendo Entertainment System)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/nestopia"
license=('custom')
makedepends=('git')
source=('git://github.com/libretro/nestopia.git')
md5sums=('SKIP')


pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname/libretro
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro/nestopia_libretro.so $pkgdir/usr/lib/libretro/libretro-nestopia.so
}

