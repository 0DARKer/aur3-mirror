# Contributor, Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=findwild
pkgver=1.2
pkgrel=1
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2' 'xdg-utils')
pkgdesc="A program to find files with a nice gtk interface"
url="http://kornelix.squarespace.com/findwild"
source=("http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('4b399b60e8d77b06906ccbd7770cae16')

build() {
  cd $srcdir/$pkgname-$pkgver
  export PREFIX=/usr
  make CFLAGS+="-c $(pkg-config --cflags gtk+-2.0)" \
    LFLAGS+="`pkg-config --libs gtk+-2.0 gthread-2.0`" 
  sed -i 's#/local##' desktop 
}

package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop 
  make DESTDIR=$pkgdir install 
}
