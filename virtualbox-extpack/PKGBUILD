pkgname=virtualbox-extpack
pkgver=4.0.0
pkgrel=1
pkgdesc="VirtualBox Extension Pack : Support for USB 2.0 devices, VirtualBox RDP and PXE boot for Intel cards"
arch=('i686' 'x86_64')
url="http://www.virtualbox.org/"
license=('GPL' 'custom')
depends=('virtualbox>=4.0.0')
conflicts=('virtualbox-ext-oracle')
install=virtualbox-extpack.install
source=(http://download.virtualbox.org/virtualbox/${pkgver}/Oracle_VM_VirtualBox_Extension_Pack-${pkgver}-69151.vbox-extpack)
sha256sums=('ee17dff369901d3d5232aad4f4a3712d6a40074d02fb45f575657bf2d5946f3c')

package() {
  install -d -m 1777 "${pkgdir}/tmp"
  install -D -m 644 "${srcdir}/Oracle_VM_VirtualBox_Extension_Pack-4.0.0-69151.vbox-extpack" "${pkgdir}/tmp/Oracle_VM_VirtualBox_Extension_Pack-4.0.0-69151.vbox-extpack"
}
