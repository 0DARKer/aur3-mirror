pkgname=python2-braintree
_pkgname=braintree
pkgver=2.28.0
pkgrel=1
pkgdesc="Braintree Python Library"
arch=('any')
url="https://www.braintreepayments.com/docs/python"
license=('MIT')
makedepends=("python2-setuptools")
depends=('python2')
source=("https://github.com/braintree/braintree_python/archive/${pkgver}.tar.gz")

package() {
  cd ${_pkgname}_python-$pkgver
  python2 setup.py install --root "${pkgdir}"

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

sha512sums=('c3d47d2758b64e87ca35b8333b14280118228b24a7bb468e42cdf8d540e5cbdf99e9bbbaaab470784063c4ec7b2e52626f0c35d1e67f1b9c231afbf15c6bf37a')
