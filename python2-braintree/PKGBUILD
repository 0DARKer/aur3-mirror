# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=python2-braintree
_pkgname=braintree
pkgver=2.26.0
pkgrel=1
pkgdesc="Braintree Python Library"
arch=('any')
url="https://www.braintreepayments.com/docs/python"
license=('MIT')
makedepends=("python2-distribute")
depends=('python2')
source=("https://github.com/braintree/braintree_python/archive/${pkgver}.tar.gz")

package() {
  cd "${srcdir}/${_pkgname}_python-$pkgver"
  python2 setup.py install --root "${pkgdir}"

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

sha512sums=('d12d942ec548947215e8938fa141b6101736ef523d1b8dd2aba2309c0d624df76c71875aff3511e545357a686d0455a0fd6cfbe4bec714cb91eda9285ff0bb6b')
