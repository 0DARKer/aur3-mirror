pkgname=ketpegs-git
_gitname=ketpegs
pkgver=0.8.1.g23b18a3
pkgrel=1
pkgdesc="A pegs game using the curses library"
arch=('any')
url="http://github.com/cdede/ketpegs/"
license=('GPL3')
depends=('python2-urwid')
makedepends=('git' )

source=('git+https://github.com/cdede/ketpegs.git')
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}
build() {
  cd $_gitname
  python2 setup.py build
}

package() {
  cd $_gitname
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
