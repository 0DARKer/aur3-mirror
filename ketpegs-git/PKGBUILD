pkgname=ketpegs-git
_gitname=ketpegs
pkgver=0.9.4.gdf5a4fb
pkgrel=1
pkgdesc="A thicket and pegs game using the curses"
arch=('any')
url="http://github.com/cdede/ketpegs/"
license=('GPL3')
depends=('python-urwid')
makedepends=('git' )

source=('git+https://github.com/cdede/ketpegs.git')
sha256sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}
build() {
  cd $_gitname
  python setup.py build
}

package() {
  cd $_gitname
  python setup.py install --root="$pkgdir/" --optimize=1
}
