# GradeL: Installer: Arch
# Contributor: Chris Giles <Chris.G.27 (at) Gmail.com>

pkgname=gradel
pkgver=0.11.2
pkgrel=1
pkgdesc="A gradebook program for teachers"
arch=("i686" "x86_64")
url="http://${pkgname}.sourceforge.net/"
license=("GPL")
depends=("gambas2")
options=(!emptydirs)

source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}-src.tar.gz)
sha1sums=('ce946dc19b8951ab923a082e6959d3fe2630b75e')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}/

	# Variables
	export DESTDIR=${pkgdir}

	# Build
	sh ./compile.sh || return 1
	sh ./install.sh || return 1

	# Desktop
	install -D ${startdir}/extra/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
}
