# $Id$
# Maintainer: Raphael Maville <rafmav@free.fr>

pkgname=maxima
pkgver=5.23.1
pkgrel=1
pkgdesc="lisp computer algebra system manipulation."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/maxima/"
license=('GPL')
makedepends=('perl' 'python')
depends=('clisp')
# for lisp, you need one of the following implementations:
# I ignore which is the best!
# clisp(clisp),gcl(GCL),lisp(CMUCL),scl(SCL),sbcl(SBCL),lisp(ACL),
# or openmcl(OpenMCL),ecl(ECL)

#http://downloads.sourceforge.net/project/maxima/Maxima/5.23.1/maxima-5.23.1.tar.gz
source=(http://downloads.sourceforge.net/project/${pkgname}/Maxima/${pkgver}/${pkgname}-${pkgver}.tar.gz)
md5sums=('4d20cf73196335be536a01883aacbb50')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
