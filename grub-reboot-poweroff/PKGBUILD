# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=grub-reboot-poweroff
pkgver=0.0.1
pkgrel=1
pkgdesc="Reboot and Poweroff system from Grub boot menu"
arch=('any')
url="http://www.eworm.de/"
license=('GPL')
depends=('grub-common')
source=('90_reboot'
	'91_poweroff')

package() {
	install -D -m755 ${srcdir}/90_reboot ${pkgdir}/etc/grub.d/90_reboot
	install -D -m755 ${srcdir}/91_poweroff ${pkgdir}/etc/grub.d/91_poweroff
}

sha256sums=('8f94f51bf2c055a615e0ebd05f0ff9b2dbc2a65402bb1515a0233998996676df'
            'de56a2dd670ecbd9ad9691ce5dec7f6588e4d036b78230122932901b53f7d3d3')
