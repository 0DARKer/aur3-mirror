# Maintainer: Ferik <djferik at gmail dot com>

pkgname=masterpdfeditor
pkgver=1.8.13
pkgrel=1
pkgdesc="Master PDF Editor is a complete solution for creation and editing PDF files. (Free for non-commercial use)"
url="http://code-industry.net/free-pdf-editor.php"
arch=('i686'  'x86_64')
license=('commercial')
depends=('gcc-libs' 'libxext' 'libsm')
source=("http://code-industry.net/public/MasterPDFEditor-${pkgver}.i386.tar.gz" "pdfeditor.desktop")
md5sums=('db5c8631fcbc0879078ac9d8ff5f4c46' '2a7d27ecb55fb5d9ea2e45e119b173db')

[ "$CARCH" = "x86_64" ] && {
source=("http://code-industry.net/public/MasterPDFEditor-${pkgver}.x86_64.tar.gz" "pdfeditor.desktop")
md5sums=('b58bde50554705e3d1769edf19156222' '2a7d27ecb55fb5d9ea2e45e119b173db')
 }

build() {
true
}

package() {
mkdir -p ${pkgdir}/usr/{share/pdfeditor,bin}
cd $srcdir/MasterPDFEditor
/bin/tar cf - * | ( cd ../../pkg/usr/share/pdfeditor; tar xfp - )
install -D -m755 $srcdir/MasterPDFEditor/lang/*.qm $pkgdir/usr/share/pdfeditor/lang
install -D -m755 $srcdir/MasterPDFEditor/lang/*.ts $pkgdir/usr/share/pdfeditor/lang
install -D -m755 $srcdir/MasterPDFEditor/License.txt $pkgdir/usr/share/pdfeditor/
install -D -m644 $srcdir/MasterPDFEditor/pdfeditor.png $pkgdir/usr/share/pixmaps/pdfeditor.png
install -D -m644 $srcdir/pdfeditor.desktop $pkgdir/usr/share/applications/pdfeditor.desktop
}
