pkgname=python-wget
pkgver=2.0
pkgrel=1
pkgdesc="pure python download utility"
url="http://bitbucket.org/techtonik/python-wget/"
depends=('python')
makedepends=('python-distribute')
license=('GPL3')
arch=('any')
source=('https://pypi.python.org/packages/source/w/wget/wget-2.0.tar.gz')
md5sums=('bbcb93502cce2fc2ed0c3d2b56579909')

build() {
    cd $srcdir/wget-2.0
    python setup.py build
}

package() {
    cd $srcdir/wget-2.0
    python setup.py install --root="$pkgdir" --optimize=1 
}
