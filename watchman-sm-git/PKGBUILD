# Maintainer Jack Frost <fbt@fleshless.org>

pkgname='watchman-sm-git'
pkgdesc='A service manager for linux written in bash'
license='BSD'
pkgver=0.155
pkgrel=1
arch='any'
url='https://github.com/fbt/watchman'

provides='watchman-sm'
conflicts='watchman-sm'

source=( "${pkgname}::git://github.com/fbt/watchman.git" )
md5sums='SKIP'

pkgver() {
	cd "${srcdir}/${pkgname}"
	echo "0.`git rev-list HEAD | wc -l`"
}

package() {
	cd "${srcdir}/${pkgname}"
	install -Dm755 bin/watchman			"$pkgdir/bin/watchman"
	install -Dm755 bin/watchman-service	"$pkgdir/bin/service"
	install -Dm755 bin/watchman-respawn	"$pkgdir/bin/watchman-respawn"
	install -Dm755 bin/watchman-runas	"$pkgdir/bin/watchman-runas"
}
