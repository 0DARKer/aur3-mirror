# Contributor: Scott Garrett <Wintervenom@archlinux.us>
#DLAGENTS=('http::/usr/bin/wget -c -U Mozilla -t 3 --waitretry=3 -O %o %u')
pkgname=tilp
pkgver=1.14
pkgrel=1
pkgdesc="TI graphing calculator link/transfer program"
arch=(i686 x86_64)
url="http://lpg.ticalc.org/prj_tilp/"
license=('GPL')
depends=('libglade' 'libticalcs')
options=('force' '!libtool')
source=("http://lpg.ticalc.org/prj_tilp/download/tilp2-1.14.tar.bz2"
	'tilp.xml')


build() {
  cd ${srcdir}/tilp2-${pkgver}

  #KDE users can remove the --without-kde option to enable native kde file dialogs
  ./configure --prefix=/usr --without-kde || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install

  install -m755 -d ${pkgdir}/usr/share/applications
  install -m644 ${srcdir}/tilp2-${pkgver}/desktop/kde/tilp.desktop ${pkgdir}/usr/share/applications

  install -m755 -d ${pkgdir}/usr/share/mime/packages
  install -m644 ${srcdir}/tilp.xml ${pkgdir}/usr/share/mime/packages
}

md5sums=('813643048dcb93dfae2ce79441f15277'
         '0303100e8ccf1c92977a68f533af0887')
