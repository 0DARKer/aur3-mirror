# Contributor: bzt <unmacaque@gmail.com>

pkgname=audacious-plugin-highlyadvanced
pkgver=0.11
pkgrel=1
pkgdesc="A plugin for Audacious to play GSF files. Based on Highly Advanced. Patched to work with the latest version." 
arch=('i686' 'x86_64')
url="http://hg.atheme.org/users/nenolod/highlyadvanced/"
license=('GPL2')
source=("http://hg.atheme.org/users/nenolod/highlyadvanced/archive/tip.tar.gz"
        "highlyadvanced.patch")
sha256sums=("95de2af59f9c6d703c39ef0302fd1f4a17b97526dfe6802e1f0721eaa9a626e7"
            "40a7a4fdaec6c756de9de9db43489fe552a84d3898155b5121faaae1981afda7")
depends=(audacious)

_hghead=46212061793a

build() {
  cd ${srcdir}/highlyadvanced-${_hghead}

  patch -p3 < ../highlyadvanced.patch

  ./configure --prefix=/usr || return 1

  make || return 1
  make install DESTDIR=$pkgdir || return 1
}

