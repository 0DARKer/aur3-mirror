# Maintainer: bzt <unmacaque@gmail.com>
# Contributor: bzt <unmacaque@gmail.com>

pkgname=audacious-plugin-highlyadvanced
pkgver=3.1.1
pkgrel=2
pkgdesc="A plugin for Audacious to play GSF files. Based on Highly Advanced."
arch=('i686' 'x86_64')
url="https://github.com/unmacaque/audacious-plugin-highlyadvanced"
license=('GPL2')
source=('https://github.com/downloads/unmacaque/audacious-plugin-highlyadvanced/audacious-plugin-highlyadvanced-3.1.1.tar.gz')
sha256sums=('d2c61b394acff9fa1281f9a3946a6f348a52eb99c428df4d8223bc53391423cc')
depends=('audacious>=3.0')
 
build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  make install DESTDIR=$pkgdir
}

