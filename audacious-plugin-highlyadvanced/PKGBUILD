# Contributor: bzt <unmacaque@gmail.com>
 
pkgname=audacious-plugin-highlyadvanced
pkgver=3.1.1
pkgrel=1
pkgdesc="A plugin for Audacious to play GSF files. Based on Highly Advanced. Patched to work with the latest version."
arch=('i686' 'x86_64')
url="http://hg.atheme.org/users/nenolod/highlyadvanced/"
license=('GPL2')
source=("http://jira.atheme.org/secure/attachment/10740/highlyadvanced-3.1.tar.gz")
sha256sums=("fb960d2e1e8464d8db92d66087dcad84c5e86c5b78c05278f49ff1aee428bdf1")
depends=(audacious)
 
build() {
  cd ${srcdir}/highlyadvanced
 
  ./configure --prefix=/usr || return 1
 
  make || return 1
  make install DESTDIR=$pkgdir || return 1
}

