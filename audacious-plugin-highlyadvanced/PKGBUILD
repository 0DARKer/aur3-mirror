# Maintainer: bzt <unmacaque@gmail.com>
# Contributor: bzt <unmacaque@gmail.com>

pkgname=audacious-plugin-highlyadvanced
pkgver=3.2
pkgrel=1
pkgdesc="A plugin for Audacious to play GSF files. Based on Highly Advanced."
arch=('i686' 'x86_64')
url="https://github.com/unmacaque/audacious-plugin-highlyadvanced"
license=('GPL2')
source=('https://github.com/downloads/unmacaque/audacious-plugin-highlyadvanced/audacious-plugin-highlyadvanced-3.2.tar.gz')
sha256sums=('14e2567a49e0b793723055e19b3c6ac1c25632c62b3c25ebaf9b949586b80590')
depends=('audacious>=3.2' 'glib2>=2.16')
makedepends=('libresample')
 
build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  ./configure --prefix=/usr
  
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  
  make install DESTDIR=$pkgdir
}

