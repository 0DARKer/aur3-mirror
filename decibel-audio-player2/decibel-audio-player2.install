pkgname=decibel-audio-player2

post_install() {
    mkdir -p /usr/share/covergloobus/players 2> /dev/null    
	ln -sf /usr/share/decibel/src/modules/CoverGloobus.p_ /usr/share/covergloobus/players/decibel.py 2> /dev/null	
}

post_upgrade() {
	post_install $1
}

post_remove() {	
    rm -rf /usr/share/covergloobus/players/decibel.py 2> /dev/null
}

op=$1
shift

$op "$@"
