# Maintainer: Phillipe Smith <phillipe@archlinux.com.br>
pkgname=decibel-audio-player2
pkgver=2.14
pkgrel=1
pkgdesc="Nice and simple GTK+ audio player written in Python"
arch=('i686' 'x86_64')
url="http://opendesktop.org/content/show.php/Decibel+2+(Audio+Player)?content=142133"
license=('GPL')
depends=('gtk2' 'dbus' 'dbus-python' 'python2' 'pygtk' 'python-imaging' 'python-notify' 'gstreamer0.10-python' 'mutagen')
optdepends=('pycddb: To play Audio CDs'         
            'covergloobus: Show what is playing on your favorite player')
conflicts=('decibel-audio-player')
install=decibel-audio-player2.install
source=("http://opendesktop.org/CONTENT/content-files/142892-decibel_${pkgver}-${pkgrel}~mickyz.deb")
md5sums=('0c7e58394790331d7809b9321a4ee6aa')

build() {  
  tar -zxf $srcdir/data.tar.gz  
}

package() {  
  cp -r $srcdir/usr/ $pkgdir  
  install -Dm 755 ${pkgdir}/usr/share/decibel/pix/decibel-48.png ${pkgdir}/usr/share/pixmaps/decibel.png
  sed 's/^python/python2/' -i ${pkgdir}/usr/bin/decibel
  sed 's/^python/python2/' -i ${pkgdir}/usr/bin/decibel-remote
}
