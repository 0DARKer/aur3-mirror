# Maintainer: Konstantin Shabanov <kes.eclipse@gmail.com>

pkgname=udpxy
pkgver=1.0_Chipmunk_16
pkgrel=2
pkgdesc="small-footprint UNIX/Linux daemon to relay multicast UDP traffic to client's TCP (HTTP) connection."
arch=(i686 x86_64)
url="http://udpxy.sf.net"
license=('GPL3')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/Chipmunk-1.0/$pkgname.${pkgver//_/-}.tgz
	$pkgname.conf
	$pkgname.rc)
md5sums=('0bba6fd3e0b0065424b198abdf0acb7d'
         '48993e68830724e3c78f8b4fb7690a15'
         '833fc814391c965b2eccda500c0fe637')

build() {
  cd "$srcdir/$pkgname-${pkgver//_/-}"
  make  || return 1
  sed -i '188,189d' Makefile
  make INSTALLROOT="$pkgdir/usr" install || return 1

  # Install rc scripts
  install -D -m755 $srcdir/$pkgname.rc $pkgdir/etc/rc.d/$pkgname || return 1
  install -D -m644 $srcdir/$pkgname.conf $pkgdir/etc/conf.d/$pkgname || return 1

}
