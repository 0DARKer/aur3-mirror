# Contributor: Thomas Krug <phragment@htu.tugraz.at>

pkgname=libsigrok
pkgver=0.2.2
pkgrel=1
pkgdesc="Client software that supports various hardware logic analyzers, core library"
arch=('i686' 'x86_64')
url="http://www.sigrok.org/wiki/Libsigrok"
license=('GPL3')
depends=('libzip' 'libftdi-compat' 'alsa-lib')
source=("http://sigrok.org/download/source/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('c14ae407e33b43cae33751246a045ab9')

build() {
  cd "$srcdir/${pkgname}-${pkgver}"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/${pkgname}-${pkgver}"

  make DESTDIR="$pkgdir" PREFIX=/usr install
}

