# Maintainer: American_Jesus <american.jesus.pt AT gmail DOT com>

pkgname=meocloud
pkgver=0.1.10
pkgrel=1
pkgdesc="Portuguese cloud storage, file synchronization service"
url="https://meocloud.pt"
arch=("i686" "x86_64")
license=('custom')
options=('!strip' '!upx')


source=("https://meocloud.pt/binaries/linux/i386/meocloud-latest_i386.tar.gz"
        "termos.txt")
md5sums=('f7e8c0318b55430d53590858547ae897'
         'c13ee3f76fba2aaa236dd80448522f9e')


if [[ "$CARCH" == "x86_64" ]]; then
  source[0]=https://meocloud.pt/binaries/linux/x86_64/meocloud-latest_x86_64.tar.gz
  md5sums[0]=72c575e5234e2444462569ac2de69269
fi


package() {
  cp -R $srcdir/{opt,usr} $pkgdir

  find "$pkgdir/opt/meocloud/" -type f -exec chmod 644 {} \;
  chmod 755 $pkgdir/opt/meocloud/{daemon,meocloud,meocloudd,restart_meocloud.sh}
  install -Dm644 "$srcdir/termos.txt" "$pkgdir/usr/share/licenses/$pkgname/termos.txt"

}
