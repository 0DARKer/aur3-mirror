pkgname=craftbukkit-plugin-guns
pkgver=1.0
pkgrel=1
pkgdesc="Plugin for CraftBukkit that lets you add custom gun items"
arch=(any)
url="http://dev.bukkit.org/server-mods/guns/"
license=('unknown')
depends=('craftbukkit-plugin-spout')
conflicts=(craftbukkit-plugin-spout-gunpack)
provides=(craftbukkit-plugin-spout-gunpack)
source=("http://dev.bukkit.org/media/files/581/15/Guns_.jar")
noextract=("Guns_.jar")
md5sums=('d585f56ae895744ee2979cc2b8cbaf6e')

package() {
	mkdir -p "$pkgdir/opt/craftbukkit/plugins"
	install -m 644 "$srcdir/Guns_.jar" "$pkgdir/opt/craftbukkit/plugins"
}
