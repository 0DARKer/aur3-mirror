# Maintainer: Vincent Bernardoff <vb@luminar.eu.org>

pkgname=clasp
groups=('potassco')
pkgver=3.0.2
pkgrel=1
pkgdesc="A conflict-driven nogood learning answer set solver."
arch=('x86_64' 'i686')
url="http://potassco.sourceforge.net/"
license=('GPL3')
depends=()
source=("http://downloads.sourceforge.net/project/potassco/${pkgname}/${pkgver}/${pkgname}-${pkgver}-p1-source.tar.gz")
md5sums=(c8e6275acd9e3b4644f3b2dea3d78caa)

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure.sh --prefix='/usr'
    cd build/release
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}/build/release/bin"
    install -D "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
