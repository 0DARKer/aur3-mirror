_author=C/CO/COSIMO
_perlmod=Text-Hunspell
pkgname=perl-text-hunspell
pkgver=2.05
pkgrel=1
pkgdesc='Text::Hunspell - Perl interface to the GNU Hunspell library'
arch=('i686' 'x86_64')
url="http://search.cpan.org/~cosimo/Text-Hunspell/"
license=('GPL' 'PerlArtistic')
groups=()
depends=(
perl
hunspell
)
makedepends=(
perl
hunspell
)
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://search.cpan.org/CPAN/authors/id/$_author/$_perlmod-$pkgver.tar.gz")
# hunspell.patch
noextract=()

build(){
  cd "$srcdir/$_perlmod-$pkgver"
  # version of hunspell
#  _hunver=$(LC_ALL=C pacman -Qi hunspell | grep Version | awk '{print $3}' | sed  's/^\([0-9]\+\.[0-9]\+\).*$/\1/')
#  sed -e "s/HUNSPELL_VERSION/$_hunver/" $srcdir/hunspell.patch > $srcdir/hunspell.patch.fix
#  patch -p1 < ../hunspell.patch.fix

  # Install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}
check(){
  cd "$srcdir/$_perlmod-$pkgver"
  make test
}
package(){
  cd "$srcdir/$_perlmod-$pkgver"
  make install DESTDIR="$pkgdir/"
  # remove perllocal.pod and .packlist
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
md5sums=('24a1bb194754b00af203da02dc9624b2')
