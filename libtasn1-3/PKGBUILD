# Maintainer: Sairon Istyar <saironiq@gmail.com>

pkgname=libtasn1-3
pkgver=2.14
pkgrel=3
pkgdesc='tasn1-3 library (shared objects)'
arch=('i686' 'x86_64')
url="https://www.gnu.org/software/libtasn1/"
license=(LGPLv2.1)

if [ "${CARCH}" = "x86_64" ] ; then
  _arch1="amd64"
  _arch2="x86_64"
  source=(http://ftp.debian.org/debian/pool/main/libt/libtasn1-3/libtasn1-3_${pkgver}-${pkgrel}_amd64.deb)
  md5sums=('113604c36084f319782dc1e7245e047a')
else
  _arch1="i386"
  _arch2="i386"
  source=(http://ftp.debian.org/debian/pool/main/libt/libtasn1-3/libtasn1-3_${pkgver}-${pkgrel}_i386.deb)
  md5sums=('6364545baa618177506467a033af4715')
fi

package() {
  ar vx $srcdir/libtasn1-3_${pkgver}-${pkgrel}_${_arch1}.deb
  tar xzvf $srcdir/data.tar.gz
  install -Dm755 $srcdir/usr/lib/${_arch2}-linux-gnu/libtasn1.so.3.2.0 $pkgdir/usr/lib/libtasn1.so.3.2.0
  ln -s libtasn1.so.3.2.0 $pkgdir/usr/lib/libtasn1.so.3
}
