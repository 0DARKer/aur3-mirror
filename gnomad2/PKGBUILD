# Contributor: Alois Nespor <alois.nespor@gmail.com>

pkgname=gnomad2
pkgver=2.9.4
pkgrel=6
pkgdesc="GTK client program for the NOMAD Jukebox with MTP support"
arch=('any')
url="http://gnomad2.sourceforge.net"
license=('GPL')
depends=('intltool' 'libusb' 'libnjb' 'libid3tag' 'gtk2' 'libmtp' 'taglib')
makedepends=('perlxml')
optdepends=('dbus-glib: for device autodetection'
	    'hal: for device autodetection'
	    'libgnomeui: better integration with Gnome')
source=(http://downloads.sourceforge.net/gnomad2/gnomad2-$pkgver.tar.gz
        $pkgname.patch)
md5sums=('e47382c8cbb87b0e6630b847c464c3b2'
         '0f7affaf3e6cf2bd56d47c8dad13f10c' )

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0< "$srcdir/$pkgname.patch"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
