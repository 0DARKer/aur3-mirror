pkgname='perl-moosex-types-common'
pkgver='0.001002'
pkgrel='1'
pkgdesc="A library of commonly used type constraints"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-moose>=0.39' 'perl-moosex-types>=0.04' 'perl-test-exception')
url='http://search.cpan.org/dist/MooseX-Types-Common'
source=('http://search.cpan.org/CPAN/authors/id/G/GR/GRODITI/MooseX-Types-Common-0.001002.tar.gz')
md5sums=('aedadf906fc19dd4b75529c01c3a1d73')

build() {
  DIST_DIR="${srcdir}/MooseX-Types-Common-0.001002"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
