# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=python-snakefood
pkgver=1.3
pkgrel=2
pkgdesc="Generate dependency graphs from Python code."
arch=('i686')
url="http://furius.ca/snakefood/"
license=('GPL')
depends=('python')
source=(http://furius.ca/downloads/snakefood/releases/snakefood-$pkgver.tar.bz2)
md5sums=('37e33f9d0d2ba437f8e4c3aeb9b80a4f')

build() {
  cd $startdir/src/snakefood-$pkgver
  python setup.py bdist_dumb || return 1
  cd $startdir/pkg
  tar xzvf $startdir/src/snakefood-$pkgver/dist/snakefood-$pkgver.linux*.tar.gz
}
