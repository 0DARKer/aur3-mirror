
pkgname=aurcheck
pkgver=0.7.3
pkgrel=1
pkgdesc="A tool that allows to easily check updates from AUR"
arch=('any')
url="https://github.com/cdede/aurcheck/"
depends=(pyalpm python3-aur)
makedepends=('git' )
license=('GPL')

_gitroot="http://github.com/cdede/aurcheck.git"
_gitname="aurcheck"

build() {

  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth=1  $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  mkdir "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname" && ls -A | grep -v .git | xargs -d '\n' cp -r -t ../$_gitname-build 
}
package() {
  cd "$srcdir/$_gitname-build"
  install -Dm 755 $pkgname $pkgdir/usr/bin/$pkgname
}
