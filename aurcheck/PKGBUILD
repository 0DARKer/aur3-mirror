
pkgname=aurcheck
pkgver=0.7.2
pkgrel=1
pkgdesc="A tool that allows to easily check updates from AUR"
arch=('any')
url="https://github.com/cdede/aurcheck/"
depends=(pyalpm python3-aur)
license=('GPL')
source=("https://github.com/cdede/aurcheck/tarball/master")
sha256sums=('e19bb2cc5d88c677ca1aca2e4a989e2e90474909882f38cba79ae74c11f29ddb')

build() {
    cd $srcdir/*-aurcheck-*
    install -Dm 755 $pkgname $pkgdir/usr/bin/$pkgname
}
