#!/bin/bash
. /etc/rc.conf
. /etc/rc.d/functions

case "$1" in
  start)
    stat_busy "Starting Teeworlds Server"
    cd /usr/share/teeworlds/data
    /usr/bin/teeworlds_isrv  >/dev/null &2>&1
    if [ $? -gt 0 ]; then
      stat_fail
    else
      pidof teeworlds_isrv > /var/run/teeworlds-isrvd.pid
      add_daemon teeworlds-isrvd
      stat_done
    fi
    ;;
  debug)
    stat_busy "Starting Teeworlds Server DEBUG"
   cd /usr/share/teeworlds/data
   /usr/bin/teeworlds_isrv
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon teeworlds-isrvd
      stat_done
    fi
    ;;

  stop)
    stat_busy "Stopping Teeworlds Server"
    [ -f /var/run/teeworlds-isrvd.pid ] && kill $(cat /var/run/teeworlds-isrvd.pid) &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm -f /var/run/teeworlds-isrvd.pid
      rm_daemon teeworlds-isrvd
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart|debug}"
esac
exit 0

