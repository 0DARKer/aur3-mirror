# Contributor: Jan Cholasta <grubber@grubber.cz>

pkgname=slade-svn
pkgver=548
pkgrel=1
pkgdesc="SLADE3 Doom editor."
arch=('i686' 'x86_64')
url="http://slade.mancubus.net/"
license=('GPL')
depends=('wxgtk-2.9' 'freeimage')
makedepends=('subversion')
conflicts=('slade')
provides=('slade')
source=($pkgname-wx.patch
        slade.desktop
        slade.png)
md5sums=('ac4c6b1e361b2adc6b197976cfd422b0'
         '2c7337f8f918009b8633f6650a583efd'
         '85e440a64d8185fb903b1cec4f72c234')

_svntrunk="http://mancubus.net/svn/hosted/slade/trunk/"
_svnmod="slade"

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf $_svnmod-build
  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  patch -p1 < "$srcdir"/$pkgname-wx.patch || return 1

  make || return 1

  install -Dm755 dist/slade "$pkgdir"/usr/bin/slade
  install -Dm644 dist/slade.pk3 "$pkgdir"/usr/share/slade3/slade.pk3

  install -Dm644 "$srcdir"/slade.desktop "$pkgdir"/usr/share/applications/slade.desktop
  install -Dm644 "$srcdir"/slade.png "$pkgdir"/usr/share/pixmaps/slade.png
}
