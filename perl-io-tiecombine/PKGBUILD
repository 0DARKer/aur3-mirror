pkgname=perl-io-tiecombine
_realname=IO-TieCombine
pkgver=1.000
pkgrel=1
pkgdesc="produce tied (and other) separate but combined variables"
arch=(i686 x86_64)
license=('perl')
url="http://search.cpan.org/~rjbs/IO-TieCombine"
options=(!emptydirs)


#provides=('IO-TieCombine')
provides=('io-tiecombine=1.000' 'IO::TieCombine::Handle=1.000' 'perl-io-tiecombine-handle=1.000' 'IO::TieCombine::Scalar=1.000' 'perl-io-tiecombine-scalar=1.000' 'IO::TieCombine=1.000' 'perl-io-tiecombine=1.000')

source=(http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/IO-TieCombine-1.000.tar.gz)
md5sums=('a2e0d8019cf8ca3ea33d970d93f9853e')

build() {
  _expected_dir="${srcdir}/${_realname}-${pkgver}"
  if [ -d "$_expected_dir" ]; then
    cd "$_expected_dir"
  else
    _expected_dir="${srcdir}/$(bsdtar -t -f $(basename $source) | head -n1)"
    if [ -d "$_expected_dir" ]; then
      cd "$_expected_dir"
    else
      _makefile=$(find $srcdir -iname Makefile.PL)
      if [ ! -z "$_makefile" ]; then
        _expected_dir=$(dirname $_makefile)
        if [ -d "$_expected_dir" ]; then
          cd "$_expected_dir"
        else
          echo "[1;31mERROR[0m unable to detect source directory"
          echo "[1;34m-->[0m this is often due to CPAN's lack of standard naming conventions"
          echo "[1;34m-->[0m it may be possible to fix this by adjusting the build function in the PKGBUILD"
        fi
      fi
    fi
  fi
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
