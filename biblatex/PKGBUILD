# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=biblatex  
pkgver=1.0
pkgrel=2
pkgdesc="A complete reimplementation of the bibliographic facilities provided by LaTeX"
url="http://www.tex.ac.uk/tex-archive/macros/latex/exptl/biblatex/"
arch=('any')
license=('LPPL')
depends=('texlive-latexextra' 'logreq')
install=biblatex.install
source=(http://sourceforge.net/projects/$pkgname/files/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('bed248f22af3955d8c77a49622d1b40e')

build() {
  cd $srcdir/$pkgname
  install -d $pkgdir/usr/share/texmf/bibtex
  install -d $pkgdir/usr/share/texmf/doc/$pkgname
  install -d $pkgdir/usr/share/texmf/tex/latex/$pkgname
  cp -R $srcdir/$pkgname/latex/* \
    $pkgdir/usr/share/texmf/tex/latex/$pkgname
  cp -R $srcdir/$pkgname/doc/* \
    $pkgdir/usr/share/texmf/doc/$pkgname
  install -D -m644 $srcdir/$pkgname/bibtex/bst/$pkgname.bst \
    $pkgdir/usr/share/texmf/bibtex/bst/$pkgname.bst
  install -D -m644 $srcdir/$pkgname/README \
    $pkgdir/usr/share/licenses/$pkgname/README
  find $pkgdir/usr -type f -exec chmod 644 {} \;
}
