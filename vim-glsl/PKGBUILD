pkgname=vim-glsl
pkgver=1.10.00
pkgrel=1
pkgdesc="GLSL (OpenGL Shading Languae) syntax highlighting for Vim"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=1002"
license=('unknown')
#depends=('vim')
source=(glsl.vim)
md5sums=('5b0fd5f19948ee3d833a6cf696e46699')

build() {
	:
}

package() {
	cd ${srcdir}

	local _installdir=${pkgdir}/usr/share/vim/vimfiles/syntax/
	mkdir -p ${_installdir}
	cp glsl.vim ${_installdir}/
}

