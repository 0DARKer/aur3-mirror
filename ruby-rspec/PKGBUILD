# Maintainer: Adam Russell <adamlr6+arch@gmail.com>
pkgname=ruby-rspec
pkgver=2.4.0
pkgrel=2
pkgdesc="Behaviour Driven Development for Ruby"
arch=('any')
url="http://rspec.info/"
license=('MIT')
depends=(
	'ruby'
	'ruby-rspec-mocks>=2.4' 'ruby-rspec-mocks<2.5'
	'ruby-rspec-expectations>=2.4' 'ruby-rspec-expectations<2.5'
	'ruby-rspec-core>=2.4' 'ruby-rspec-core<2.5')
source=(http://gems.rubyforge.org/gems/rspec-$pkgver.gem)
noextract=(rspec-$pkgver.gem)
md5sums=('c10d07283bfaee24f063469dc2a31e27')

build() {
	cd "${srcdir}"
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin/" rspec-$pkgver.gem
}
