package() {
    pkgdesc="City database for geoip IP location lookups"
    depends=('geoip')
    mkdir -p ../pkg/usr/share/GeoIP/
    mv GeoLiteCity.dat ../pkg/usr/share/GeoIP/GeoIPCity.dat
}
