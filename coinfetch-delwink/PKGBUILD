pkgname=coinfetch-delwink
pkgver=2.1.1
pkgrel=1
pkgdesc="Gets BTer exchange rates between cryptocurrencies (Delwink Edition)"
arch=(any)
url="https://github.com/delwink/coinfetch/"
license=('MIT')
depends=('python' 'python-requests')
source=(https://github.com/delwink/coinfetch/archive/del$pkgver.tar.gz)
sha512sums=('497d8c21f75e7a56ef59161b487046ce557d30b8a1eddc98c724bff558cea2f96f000db44fdf3583a74630c0c9f0390dc8959ddb2d418fb2f398d036a9081fc1')

package() {
    cd "$srcdir/coinfetch-del$pkgver"
    make DESTDIR=$pkgdir PREFIX=/usr
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
} 
