# Maintainer: tritonas00 <tritonas00@gmail.com>
pkgname=system-tar-and-restore
pkgver=2.7
pkgrel=1
pkgdesc='Backup and Restore your system using tar or Transfer it with rsync'
arch=('any')
license=('GPL')
depends=('rsync' 'wget')
optdepends=('dialog' 'zenity' 'xterm' 'grub-bios' 'syslinux' 'os-prober')
url="https://github.com/tritonas00/system-tar-and-restore"
source=("http://system-tar-and-restore.googlecode.com/files/$pkgname-$pkgver.tar.gz"
        "readme.install")

md5sums=('48cdeb042b41d00ccc148e354a2af92a'
         'e4684af2731fb73cf551ec2f8368622d')

install=readme.install

package() {
cd "$srcdir"
install -Dm755 backup.sh "$pkgdir/usr/bin/backup.sh"
install -Dm755 restore.sh "$pkgdir/usr/bin/restore.sh"
install -Dm755 backup-zenity "$pkgdir/usr/bin/backup-zenity"
install -Dm755 restore-zenity "$pkgdir/usr/bin/restore-zenity"
}