# Maintainer: tritonas00 <tritonas00@gmail.com>
pkgname=system-tar-and-restore
pkgver=2.2
pkgrel=2
pkgdesc='Backup and Restore your system using tar'
arch=('any')
license=('GPL')
depends=('wget')
optdepends=('dialog' 'grub-bios' 'syslinux' 'os-prober')
url="https://github.com/tritonas00/system-tar-and-restore"
source=("http://system-tar-and-restore.googlecode.com/files/$pkgname-$pkgver.tar.gz"
        "readme.install")

md5sums=('ca99b0498a1fb8ded4179fbeb4dd32c2'
         '6d3fe836230c434c7720c7eb8e771186')

install=readme.install

package() {
cd "$srcdir"
install -Dm755 backup "$pkgdir/usr/bin/backup"
install -Dm755 restore "$pkgdir/usr/bin/restore"
}