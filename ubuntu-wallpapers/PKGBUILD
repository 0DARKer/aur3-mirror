# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>
pkgname=ubuntu-wallpapers
pkgver=0.32.1
pkgrel=1
pkgdesc="Ubuntu Wallpapers"
arch=('any')
url="http://packages.ubuntu.com/oneiric/ubuntu-wallpapers"
license=('GPL')
makedepends=('libxslt' 'python-distutils-extra')
source=("http://archive.ubuntu.com/ubuntu/pool/main/u/${pkgname}/${pkgname}_${pkgver}.tar.gz")
sha512sums=('27796c452e2e881132d27e65a07cccf6f44d2400182fa92414cf4ddcfec5b3c882791657d7b09aceb9a645831142e444a7b9e21a61943a1f0ceecffea19268ab')

build() {
  cd "${srcdir}/${pkgname}"
  xsltproc --novalid -o debian/gconf-defaults debian/wallpapers2gconf.xsl ubuntu-wallpapers.xml.in
}

package() {
  cd "${srcdir}/${pkgname}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 debian/gconf-defaults "${pkgdir}/usr/share/gconf/defaults/16_${pkgname}"
}

# vim:set ts=2 sw=2 et:
