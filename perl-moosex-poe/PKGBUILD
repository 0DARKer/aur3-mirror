pkgname='perl-moosex-poe'
_pkgname='MooseX-POE'
pkgver='0.212'
pkgrel='1'
pkgdesc="The Illicit Love Child of Moose and POE"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-test-simple' 'perl-extutils-makemaker' 'perl-moose' 'perl-poe')
url='http://search.cpan.org/dist/MooseX-POE/'
source=(http://search.cpan.org/CPAN/modules/by-module/MooseX/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('8feccea34884dca1785f68af5588dbebd3df04dc0475179fd726faf5f0cf6931')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  export PERL_MM_USE_DEFAULT=1

  perl Makefile.PL INSTALLDIRS=vendor
  make
}
check() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make test
}
package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install

  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
