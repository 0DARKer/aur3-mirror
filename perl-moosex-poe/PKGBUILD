#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-moosex-poe'
_pkgname='MooseX-POE'
pkgver='0.211'
pkgrel='1'
pkgdesc="The Illicit Love Child of Moose and POE"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-test-simple' 'perl-extutils-makemaker' 'perl-moose' 'perl-poe')
url='http://search.cpan.org/dist/MooseX-POE/'
source=(http://search.cpan.org/CPAN/authors/id/P/PE/PERIGRIN/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('e424b9fd76df984e41ea7efa761a51f7e1688d2b4e97e283ec049c647a3bd697')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1

  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1

  [ "$skiptest" = "1" ] || make test || return 1

  make DESTDIR="${pkgdir}" install || return 1

  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
