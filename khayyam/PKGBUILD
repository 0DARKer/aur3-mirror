# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=khayyam
pkgver=0.2011.01.04
pkgrel=1
pkgdesc="A collection of 3D libraries, mathematics and scene libraries and utilities, the most visible of these a scene builder and character poser Khayyam."
arch=(i686 x86_64)
url="http://floyd.sourceforge.net/"
license=('GPL')
depends=('mesa' 'libglade')
makedepends=('cmake')
source=("http://downloads.sourceforge.net/project/floyd/Khayyam/escher-0.2011.01.04.tar.bz2")
md5sums=('e8ac79c6fcb65054feafdbb9ba14611e')

build() {
  cd "$srcdir/escher-$pkgver"

  ./configure
  make
}

package() {
  cd "$srcdir/escher-$pkgver"

  install -Dm755 $pkgname/$pkgname "$pkgdir/usr/bin/$pkgname"
}

# vim:set ts=2 sw=2 et:
