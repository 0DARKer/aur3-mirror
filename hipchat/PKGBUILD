pkgname=hipchat
pkgver=1.95.444
pkgrel=1
epoch=1
pkgdesc="Persistent group chat using XMPP"
arch=('i686' 'x86_64')
url="https://www.hipchat.com/linux"
license=('unknown')
depends=('libxft' 'libltdl')

if [ "$CARCH" == "x86_64" ]; then
  source=(http://downloads.hipchat.com/linux/arch/x86_64/hipchat-$pkgver-x86_64.pkg.tar.xz)
  md5sums=('ffd17e5447cc52753f95f5b5e7e9e72b')
else
  source=(http://downloads.hipchat.com/linux/arch/i686/hipchat-$pkgver-i686.pkg.tar.xz)
  md5sums=('e574230b0a9d21e23c83fad49229156b')
fi

package() {
  cp -R $srcdir/{opt,usr} "$pkgdir"
}
