# Maintainer: Jorge <jorge.barroso.11@gmail.com>
pkgname=mozilla-searchplugins
pkgver=1.0
pkgrel=1
pkgdesc="OpenSearch plugins for Mozilla based browsers"
arch=('any')
url="https://parabolagnulinux.org/packages/libre/any/mozilla-searchplugins/"
license=('GPL3' 'LGPL' 'MPL')
md5sums=('e90d17685ee3ccffff3442979976f3e4')
source=(https://repo.parabolagnulinux.org/libre/os/i686/$pkgname-$pkgver-$pkgrel-$arch.pkg.tar.xz)

package() {
cd "${srcdir}"

tar xf $pkgname-$pkgver-$pkgrel-$arch.pkg.tar.xz
mkdir -p "${pkgdir}/usr/lib/mozilla/searchplugins"
cp -r -p "${srcdir}/usr/lib/mozilla/searchplugins" "${pkgdir}/usr/lib/mozilla/"

sed 's|usr/local|usr|' -i "${pkgdir}/usr/lib/mozilla/searchplugins"/*

}

# vim:set ts=2 sw=2 et: 