pkgname=zeitgeist
pkgver=0.7
pkgrel=1
pkgdesc="Zeitgeist Engine"
url="https://launchpad.net/zeitgeist"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('python2>=2.5' 'pygobject>=2.16.0' 'dbus-python' 'pyxdg' 'rdflib' 'raptor' 'rdfextras')
makedepends=('intltool>=0.35.0')
source=(http://launchpad.net/zeitgeist/0.7/$pkgver/+download/zeitgeist-$pkgver.tar.gz)
md5sums=('e183137806e1d3870cbaa19f7ed88d8b')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  
  #python2 fix
  export PYTHON=/usr/bin/python2
  sed -i -e '1 s/python/python2/' extra/rdfxml2py

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR=${pkgdir} install
}
