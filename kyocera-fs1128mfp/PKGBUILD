pkgname=kyocera-fs1128mfp
pkgver=8.4
pkgrel=1
pkgdesc="PPD file for Kyocera FS-1128MFP printers"
arch=('any')
url="http://www.kyoceradocumentsolutions.eu/index/service/dlc.false.driver.FS1128MFP._.EN.html#LINUX"
license=('custom')
depends=('cups')
optdepends=('system-config-printer: CUPS configuration app')
makedepends=('unzip')
source=(http://cdn.kyostatics.net/dlc/eu/driver/all/linux_ppds_fs-1128mfp.-downloadcenteritem-Single-File.downloadcenteritem.tmp/Linux_PPDs_FS-1128mfp.zip
	'LICENSE')
noextract=('Linux_PPDs_FS-1128mfp.zip')
sha512sums=('9cd52cf48954c413fc1829dbd8a46227153a9eeeb64a1daeab4d9232b584e24e742f9398c2ab7461beb6b9fc5f57408d324e8e4772d1e8146e87a4b9e2d4effe'
	    '07b969b8efd6b3922d4ea1eb1deb0c13b5c3645492b1ac3db669b99798031ada43131e3cbc69d045ad4c7f49dc325412840cc1a4981b9a2b394a6c90d7db39ea')

prepare() {
	unzip Linux_PPDs_FS-1128mfp.zip
}

package() {
	cd "$srcdir/"
	install -D "English/Kyocera_FS-1128MFP.PPD" "${pkgdir}/usr/share/cups/model/Kyocera/Kyocera_FS-1128MFP.PPD"
	install -D "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
