# Maintainer: Brad Fanella <bradfanella@archlinux.us>

pkgname=todd
pkgver=0.2.2
pkgrel=1
pkgdesc="A lightweight command-line todo list program written in C"
arch=('i686' 'x86_64')
url="http://bradfanella.cz.cc/todd/"
license=('MIT')
depends=('libconfig')
source=(http://bradfanella.cz.cc/${pkgname}/source/${pkgname}-${pkgver}.tar.gz)
md5sums=('f5e12922895c47a7033f69a6df518565')

build() {
	cd ${pkgname}
	make
}	

package() {
	cd ${pkgname}	
	make DESTDIR="${pkgdir}" install

	# License
	mkdir -p ${pkgdir}/usr/share/licenses/todd/
	install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/todd/
}
