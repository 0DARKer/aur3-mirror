pkgname=todd
pkgver=0.2
pkgrel=1
pkgdesc="A lightweight command-line todo list program written in C"
arch=('i686' 'x86_64')
url="http://bradfanella.cz.cc/todd/"
license=('MIT')
depends=('libconfig')
source=(http://bradfanella.cz.cc/${pkgname}/source/${pkgname}-${pkgver}.tar.gz)
md5sums=('99a796b3adb738626da12b7715312c8a')

build() {
	cd ${pkgname}
	make
}	

package() {
	cd ${pkgname}	
	make DESTDIR="${pkgdir}" install
}
