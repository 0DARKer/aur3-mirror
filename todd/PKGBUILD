pkgname=todd
pkgver=0.2.1
pkgrel=1
pkgdesc="A lightweight command-line todo list program written in C"
arch=('i686' 'x86_64')
url="http://bradfanella.cz.cc/todd/"
license=('MIT')
depends=('libconfig')
source=(http://bradfanella.cz.cc/${pkgname}/source/${pkgname}-${pkgver}.tar.gz)
md5sums=('786c422663228a3d9fbdb20180d78728')

build() {
	cd ${pkgname}
	make
}	

package() {
	cd ${pkgname}	
	make DESTDIR="${pkgdir}" install
}
