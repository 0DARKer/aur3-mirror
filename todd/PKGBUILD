pkgname=todd
pkgver=0.1
pkgrel=1
pkgdesc="A lightweight command-line todo list program written in C"
arch=('i686' 'x86_64')
url="http://bradfanella.cz.cc/todd/"
license=('MIT')
depends=('libconfig')
source=(http://bradfanella.cz.cc/${pkgname}/source/${pkgname}-${pkgver}.tar.gz)
md5sums=('391b229ca2b5994016eff03f3a8833c0')

build() {
	cd ${pkgname}
	make
}	

package() {
	cd ${pkgname}	
	make DESTDIR="${pkgdir}" install
}
