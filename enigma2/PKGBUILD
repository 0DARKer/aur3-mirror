# Contributor: Stas Bourakov <sbourakov(at)gmail.com>
pkgname=enigma2
pkgver=20110810
pkgrel=1
pkgdesc="Enigma2 - software for Linux-powered DVB satellite, terrestrial and cable digital television receivers (e.g. Dreambox). This is experimental version for PC."
arch=('i686' 'x86_64')
url="https://github.com/cougar-enigma/Enigma2PC"
license=('GPL2')
depends=('gettext' 'libdvdnav' 'freetype2' 'fribidi' 'giflib' 'gstreamer0.10' 'gstreamer0.10-bad-plugins' 'gstreamer0.10-base-plugins' 'gstreamer0.10-good-plugins' 'gstreamer0.10-ugly-plugins' 'libjpeg6' 'libpng' 'sdl' 'libsigc++' 'libxml2' 'libxslt' 'python2' 'swig' 'libdvbsi++' 'libxmlccwrap' 'libdreamdvd' 'libdvbcsa_4_enigma2' 'xine-lib_for_enigma2' 'twisted-web2' 'libsigcpp1.2' 'libnl-2')
makedepends=('autoconf' 'automake' 'bison' 'fakeroot' 'flex' 'gcc' 'libtool' 'm4' 'make' 'patch' 'pkg-config' 'git' 'kernel26-headers')
conflicts=()
source=('rollback_lirc_support.diff')
_commit='new_xine_plugin'
_gitroot='git://github.com/cougar-enigma/Enigma2PC.git'
_gitname='Enigma2PC'

build() {
    cd "${srcdir}"
    msg "Connecting to GIT server...."

    if [ -d "${_gitname}" ] ; then
        cd "${_gitname}" && git checkout "${_commit}" && git pull origin 
        [[ "${_commit}" ]] && git checkout "${_commit}"
        msg "The local files are updated."
        #msg "Running make distclean"
        #make distclean || :
    else
        git clone "${_gitroot}" "${_gitname}" -b "${_commit}"
        cd "${_gitname}"
        [[ "${_commit}" ]] && git checkout "${_commit}"
	fi

    if [ -d "$srcdir/$_gitname-build" ]; then
      rm -r "$srcdir/$_gitname-build"
    fi
    cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
    cd "$srcdir/$_gitname-build"
    patch -p1 -i ${srcdir}/rollback_lirc_support.diff
    autoreconf -i || return 1
    ./configure --prefix=/usr/local --with-xlib || return 1
    make || return 1
    make install DESTDIR=$pkgdir || return 1
}
md5sums=('5bb8d4b8e62cd664da681b5444fab301')
