# Contributor: noonov <noonov@gmail.com>

pkgname=lince
pkgver=1.2
pkgrel=1
pkgdesc="A bittorrent client using libtorrent to handle bittorrent protocol and gtkmm for the interface"
arch=('i686' 'x86_64')
url="http://lincetorrent.sourceforge.net/"
license=('GPL3')
depends=('libtorrent-rasterbar>=0.14.1' 'libnotify' 'gtkmm>=2.10' 'boost>=1.36')
makedepends=('intltool>=0.35.0')
options=(!libtool)
source=(http://downloads.sourceforge.net/lincetorrent/${pkgname}-${pkgver}.tar.gz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}

md5sums=('8d207f9925f126352aeca33855761c6a')
