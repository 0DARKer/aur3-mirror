# Maintainer: Ryszard Kari≈Ñski <kelloco2@gmail.com>
pkgname=xonclock
pkgver=0.0.9.3
pkgrel=1
pkgdesc="X on-screen analog clock displayer with assignable skins"
url="http://xonclock.sourceforge.net/"
arch=('x86_64' 'i686')
license=('GPL')
depends=('libpng' 'libtiff' 'libxft' 'freetype2')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('3505b6ab52244bd9399936a3a1ed6351')
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  CFLAGS="-I/usr/include/include -I/usr/include/freetype2  -lXrender -lX11 -lm" LDFLAGS=-s ./configure --prefix=/usr
  make
}