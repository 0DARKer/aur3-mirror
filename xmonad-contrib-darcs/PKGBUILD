# Package generated by cabal2arch 0.6
pkgname=xmonad-contrib-darcs
pkgrel=1
pkgver=20100705
pkgdesc="Third party extensions for xmonad"
url="http://hackage.haskell.org/package/xmonad-contrib"
license=('custom:BSD3')
arch=('i686' 'x86_64')
conflicts=('xmonad-contrib')
makedepends=()
depends=('haskell-random' 'haskell-x11-xft' 'xmonad-darcs')
options=('strip')
source=()
install=xmonad-contrib.install
md5sums=()

_darcsmod="XMonadContrib"
_darcstrunk="http://code.haskell.org"

build() {
    cd ${srcdir}
    if [[ -d ${srcdir}/$_darcsmod/_darcs ]]
    then
      msg "Retrieving missing patches"
      cd $_darcsmod
      darcs pull -a $_darcstrunk/$_darcsmod || return 1
    else
      msg "Retrieving complete sources"
      darcs get --partial --set-scripts-executable $_darcstrunk/$_darcsmod || return 1
      cd $_darcsmod
    fi
    runhaskell Setup configure --prefix=/usr --flags="use_xft,use_utf8" --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/libraries
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    mkdir -p ${pkgdir}/usr/share/doc/ghc/html/libraries/
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/xmonad-contrib
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
