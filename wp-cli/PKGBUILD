# Maintainer: Matt Fields <aur[at]bitdagger[dot]com>
pkgname=wp-cli
pkgver=0.15.1
pkgrel=1
pkgdesc="A command-line tool for managing WordPress"
url="http://wp-cli.org/"
arch=('x86_64' 'i686')
license=('MIT')
depends=('php')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("https://github.com/wp-cli/wp-cli/archive/v${pkgver}.tar.gz")
md5sums=('ad6add2845af00d802051fa7cb709d24')

prepare() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  curl -sS https://getcomposer.org/installer | php
}

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  php ./composer.phar install --no-interaction --prefer-dist
  php -dphar.readonly=0 utils/make-phar.php wp-cli.phar --quiet
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./vendor/bin/phpunit
  php ./wp-cli.phar --version
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm655 wp-cli.phar "$pkgdir/usr/local/bin/wp"
}
