# Contributor: Scott Garrett <Wintervenom@archlinux.us>

pkgname=libtifiles
pkgver=1.1.3
pkgrel=3
pkgdesc="TI File format library"
arch=(i686 x86_64)
url="http://tilp.info"
license="GPL"
depends=('zlib' 'libticonv' 'glib2')
options=('force' '!libtool')
source=(http://lpg.ticalc.org/prj_tilp/download/${pkgname}2-${pkgver}.tar.bz2)

build() {
    cd ${srcdir}/${pkgname}2-${pkgver}/
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=$startdir/pkg install
}
md5sums=('49c9a6a99c0f1fe8c376c10518fe8acb')
