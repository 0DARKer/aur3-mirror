# Contributor: Anton Bazhenov <anton.bazhenov at gmail>
# Maintainer: Sergej Pupykin <sergej@aur.archlinux.org>

pkgname=xmldiff
pkgver=0.6.9
pkgrel=1
pkgdesc="A tool that shows the differences between two similar XML files"
arch=('any')
url="http://www.logilab.org/859/"
license=('GPL')
depends=('pyxml' 'bash' 'libxslt' 'libxml2' 'docbook-xsl')
source=(http://ftp.logilab.org/pub/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('f4764f87f393ad421d9631dd926d7572')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  python setup.py install --root="$pkgdir" || return 1
  install -m755 -d "$pkgdir"/usr/share/man/man1
  install -m644 -t "$pkgdir"/usr/share/man/man1 man/*.1
}
