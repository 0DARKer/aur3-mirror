# Maintainer: Rasmus <rasmus@gmx.us>
pkgname=gambit-git
pkgver=v14.0.1.r0.g7e63f94
pkgrel=1
pkgdesc="Software Tools for Game Theory. Git version"
arch=('i686' 'x86_64')
url="https://github.com/gambitproject/"
license=('GPL')
depends=('wxgtk')
source=()
_gitroot=git://github.com/gambitproject/gambit.git
source=("$pkgname::$_gitroot")
md5sums=('SKIP')

pkgver() {
  cd "$pkgname"
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$pkgname"
  aclocal
  libtoolize
  automake --add-missing
  autoconf
  ./configure --prefix=/usr
##              --disable-enumpoly  ## fix for 64 bit?
  make
}

package() {
  cd "$pkgname"
  make DESTDIR="$pkgdir/" install
}
