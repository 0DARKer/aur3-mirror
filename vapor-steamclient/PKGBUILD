# Maintainer: Absolosba <absolosba at gmail dot com>
pkgname=vapor-steamclient
pkgver=1.2
pkgrel=1
pkgdesc="Cross-platform Steam client (IM only)"
url="http://www.facepunch.com/threads/1057523-Vapor-Cross-Platform-Steam-Client"
arch=('x86_64' 'i686')
license=('unknown')
depends=('mono')
makedepends=('rar')
source=("http://tracker.limetech.org/attachments/download/46/Vapor_1.2.rar"
        "vapor-steamclient"
	"vapor-steamclient.desktop")
md5sums=('60f5454c0bc12509bd3df3391d6a4b55'
         '6308bc78647ce1e16cd4eb423c367392'
         '92b0596435c9c5235e57a21ad49e1a4d')
build() {
  rar -y x ${srcdir}/Vapor_1.2.rar ${srcdir}
  install -dm755 ${pkgdir}/usr/{bin,share/${pkgname}}
  cp -r ${srcdir}/{*.dll,*.exe}  ${pkgdir}/usr/share/${pkgname}/|| return 1
  install -Dm755 "${srcdir}/vapor-steamclient" "${pkgdir}/usr/bin/" || return 1
}

