# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-opengl # All lowercase
pkgver=0.60.1
pkgrel=1
pkgdesc="Is software that lets you write OpenGL programs in Ruby"
arch=(any)
url="http://rubyforge.org/projects/ruby-opengl"
license=(MIT)
depends=(ruby ruby-mkrf freeglut) # Gem may depend on other gems as well (you can get dependency information from the yaml specification)
source=(http://gems.rubyforge.org/gems/ruby-opengl-$pkgver.gem)
noextract=(ruby-opengl-$pkgver.gem)
md5sums=('fb75942c535816b34f2ed5b8302b49f1')

build() {
cd $srcdir
# _gemdir is defined inside build() because if ruby[gems] is not installed on the system
#  makepkg will barf when sourcing the PKGBUILD
local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

gem install --ignore-dependencies -i "$pkgdir$_gemdir" ruby-opengl-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
