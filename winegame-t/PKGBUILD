pkgname="winegame-t"
pkgver="0.1.0"
pkgrel=1
debrel=38
pkgdesc="Its an easy interface to install windows programs and games in Wine"
arch=('i686' 'x86_64')
url="https://launchpad.net/~pzinin/+archive/winegame/"
license=('BSD')
depends=('fuseiso' 'qt' 'winestuff')
makedepends=('make')

if [ "$CARCH" = "i686" ]; then
	debarch=("i386")
	source=("https://launchpad.net/~pzinin/+archive/winegame/+files/winegame_0.1.0-rc4-0pashazz2~ppa4_i386.deb")
	md5sums=('5a500816a76f23e31025ae510e7be8e9')
	sha256sums=('262dd93e09e0f67eb6f289d357921d0dbcd85a05a053209cae5cd2eb77279676')
fi

if [ "$CARCH" = "x86_64" ]; then
	debarch=("amd64")
	source=("https://launchpad.net/~pzinin/+archive/winegame/+files/winegame_0.1.0-rc4-0pashazz2~ppa4_amd64.deb")
	md5sums=('58c2af2a44021d016637aa51fd070d81')
	sha256sums=('910fc74f87726512e8f6b26a9a0c5147b5660ee3ef02251c16d611ffacc67282')
fi

build() {
  ar x ${pkgname}_${pkgver}-rc4-0pashazz2~ppa4_${debarch}.deb
  tar xzf data.tar.gz -C "$pkgdir/"
}
