# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.20.1
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt4')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.20.1-amd64.tar.gz)
  sha1sums=('fc03969c06ee37650631cabaf650b60c9750ee84')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.20.1-i386.tar.gz)
  sha1sums=('fdd7f00a4a32a7e8219b812fa283507c7eaaf895')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
