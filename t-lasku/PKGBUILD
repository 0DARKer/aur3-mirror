# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.14.0
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.14.0-amd64.tar.gz)
  sha1sums=('0bef060dd727e9df7e59a3922c1c9720ad1fbba0')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.14.0-i386.tar.gz)
  sha1sums=('3421236dbe3a1d2d9a3b1c138e05d2eadb3809dd')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
