# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.20.2
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt4')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.20.2-amd64.tar.gz)
  sha1sums=('f166f6f015fc82af84061c3c61da0d7eafee68e3')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.20.2-i386.tar.gz)
  sha1sums=('f693ca91debca42aa064484af8c93bd8ba677007')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
