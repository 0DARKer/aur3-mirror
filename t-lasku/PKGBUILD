# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.18.2
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt4')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.18.2-amd64.tar.gz)
  sha1sums=('4e74e879556853f9fd70ebca602fd8014ebb749f')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.18.2-i386.tar.gz)
  sha1sums=('7e475a34c9e1a22698b6b41f95de2115f1071692')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
