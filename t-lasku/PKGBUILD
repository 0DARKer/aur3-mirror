# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.20.0
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt4')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.20.0-amd64.tar.gz)
  sha1sums=('7c22930d40a0ebabf4f4a355c86ae2c9038a1cd7')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.20.0-i386.tar.gz)
  sha1sums=('7400d0ca38171c4e56e14b3676ce594cbca21052')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
