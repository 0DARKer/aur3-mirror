# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.17.0
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.17.0-amd64.tar.gz)
  sha1sums=('bb47bb648f6a2dbd4b9def0c8a282588f888e675')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.17.0-i386.tar.gz)
  sha1sums=('720811f3a626610afaf19c53be4d0d7db896c768')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
