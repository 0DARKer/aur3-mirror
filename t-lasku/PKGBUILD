# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.18.1
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.18.1-amd64.tar.gz)
  sha1sums=('367d237e26d95d76f09cf6f730fe7c22ee7a2d87')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.18.1-i386.tar.gz)
  sha1sums=('01615a63dcb3ac63f74bdc85739db6965a2eee53')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
