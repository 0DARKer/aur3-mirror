# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.19.0
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt4')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.19.0-amd64.tar.gz)
  sha1sums=('c862145f0741588adf0b94c9dbebc1aee144a3b5')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.19.0-i386.tar.gz)
  sha1sums=('37d190e73b824a1dbb164dc1cfcde98072cabc61')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
