# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.18.0
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.18.0-amd64.tar.gz)
  sha1sums=('10fc43bb7f3280a8a4b23da9da8a8b18ad852f89')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.18.0-i386.tar.gz)
  sha1sums=('5117f21fc7699fb4ad484f6b26ce05fdeb00092c')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
