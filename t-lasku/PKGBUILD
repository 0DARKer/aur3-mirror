# Maintainer: Tommi Helineva <tommi.helineva+aur@gmail.com>
pkgname=t-lasku
pkgver=1.15.0
pkgrel=1
pkgdesc="A Finnish invoicing software"
arch=('i686' 'x86_64')
url="http://helineva.net/t-lasku/"
license=('BSD')
depends=('qt')
install='t-lasku.install'
if test "$CARCH" == x86_64; then
  source=(http://helineva.net/t-lasku/t-lasku-1.15.0-amd64.tar.gz)
  sha1sums=('4614c8d1ff5de354400b8da0abb6213a07137e8f')
else
  source=(http://helineva.net/t-lasku/t-lasku-1.15.0-i386.tar.gz)
  sha1sums=('44aead6197cd923d0fefe6dacf4b2fb775dd2043')
fi

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
