pkgname=pyftpdlib
pkgver=0.5.2
pkgrel=1
pkgdesc="Complete asynchronous FTP server library in Python"
arch=('any')
url='http://code.google.com/p/pyftpdlib/'
license=('public-domain')
depends=('python')
source=(http://pyftpdlib.googlecode.com/files/pyftpdlib-$pkgver.tar.gz)
md5sums=('7da8e0e4abb13c6c30714ef53bd57226')

build() {
    cd $startdir/src/pyftpdlib-$pkgver
    python ./setup.py install --root=$startdir/pkg
}

