pkgname=unenigmail
pkgver=0.2
pkgrel=1
url='https://github.com/RoffelKartoffel/unenigmail'
license=('none')
pkgdesc='Unenigmail strips Enigmails PGP encryption from emails within a supplied mbox file.'
arch=('i686' 'x86_64')
makedepends=('fpc')
provides=('unenigmail')
source=("${pkgname}::git://github.com/RoffelKartoffel/unenigmail.git")
md5sums=('SKIP')



build() {
  cd ${pkgname}
  fpc -O3 -Og -Co -Ci -Cr -Ct unenigmail.lpr
}

package() {
  mkdir ${pkgdir}/usr/bin -p
  cp ${pkgname}/unenigmail ${pkgdir}/usr/bin
}

