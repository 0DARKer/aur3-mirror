# Maintainer: Alad Wenter
# base64 -d <<< dGhlLmNoYW5naW5nLnNpZGVAZ21haWwuY29tCg==

pkgname=howm-x11
_pkgname=howm
pkgver=0.3.1
pkgrel=1
pkgdesc='A lightweight, tiling X11 window manager that mimics vi by offering operators, motions and modes.'
arch=('i686' 'x86_64')
url='https://github.com/HarveyHunt/howm'
license=('GPL')
depends=('xcb-util-keysyms' 'xcb-util-wm')
options=('docs' '!strip')
source=("https://github.com/HarveyHunt/howm/archive/$pkgver.tar.gz"
  "config.h")
sha1sums=('3fcf0170170498edf8ec6a525d6251e4149b8f35'
          '40d408fd8be92f9228ce2eefb860c7e336eead34')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  cp "$srcdir/config.h" config.h
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  make INSTALL_PREFIX=usr DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:

