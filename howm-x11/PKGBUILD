pkgname=howm-x11
_pkgname=howm
pkgver=0.1
pkgrel=1
pkgdesc='A lightweight, tiling X11 window manager that mimics vi by offering operators, motions and modes.'
arch=('i686' 'x86_64')
url='https://github.com/HarveyHunt/howm'
license=('GPL')
depends=('xcb-util-keysyms' 'xcb-util-wm')
options=('docs' '!strip')
source=('https://github.com/HarveyHunt/howm/archive/0.1.tar.gz'
  'config.h')
sha1sums=('5d7dc06d523f15c99c5eda0832db6ee996e56a18'
          'f93cbd07e33a927726955812c2fedd3fb26095a1')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  cp "$srcdir/config.h" config.h
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  make INSTALL_PREFIX=usr DESTDIR="$pkgdir/" install
}

