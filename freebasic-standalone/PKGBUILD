# Contributor: mail@tux.nsk.ru

pkgname=freebasic-standalone
pkgver=0.21.1
pkgrel=1
pkgdesc="A standalone free BASIC compiler"
arch=('i686' 'x86_64')
url="http://www.freebasic.net/"
license=('GPL2' 'LGPL')
provides=('fbc')
source=(http://downloads.sourceforge.net/fbc/FreeBASIC-$pkgver-linux-standalone.tar.lzma)
md5sums=('2f5b04f4a8d15bfc5ae96d9c1f646a3a')

build() {
	cd ${srcdir}
	tar -xf ../FreeBASIC-${pkgver}-linux-standalone.tar.lzma
}

package() {
	cd ${srcdir}/FreeBASIC-${pkgver}-linux-standalone
	mkdir ${pkgdir}/opt/
	sed -i 's/gzip -c docs\/fbc.1/#gzip -c docs\/fbc.1/g' ./install-standalone.sh
	./install-standalone.sh -i ${pkgdir}/opt
	mkdir -p ${pkgdir}/usr/bin/
	ln -s /opt/freebasic/fbc ${pkgdir}/usr/bin/
}

