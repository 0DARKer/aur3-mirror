pkgname=python3-nist
pkgver=2012.11.4
pkgrel=2
pkgdesc='A table formatter class with support for a variety of outputs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-nist"
depends=(python3 python3-scinum python-xdg)
optdepends=('python3-tabulator: support for command-line query scripts')
source=(
  http://xyne.archlinux.ca/projects/python3-nist/archives/python3-nist-2012.11.4.tar.xz
  http://xyne.archlinux.ca/projects/python3-nist/archives/python3-nist-2012.11.4.tar.xz.sig
)
sha512sums=(
  424eafb7a66d932c645586c0933b60445d9610d3dd13c430049efd6891f9c9a0cf463e75b2168a902c637f574d4a0cdb01f802e7c66e57622d20be3589a61752
  fde5616070369ae79e55f6ad0a2e2e4267a4beae08ba1b19c9e1b5441561387f00883dff42b17c38b9e7136eaf7fb933aa11b744b6eccc2f5d252d0b43b80ba2
)
md5sums=(
  d63241b9026463b4424cc763b7ff108f
  1528f73d791f3d6cfd01bf22ef831a11
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for script_ in nist-*
  do
    install -Dm755 $script_ "$pkgdir"/usr/bin/$script_
  done
}


