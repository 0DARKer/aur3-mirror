# Contributor: vogo
pkgname=lib32-ladspa
pkgname32=ladspa
pkgver=1.13
pkgrel=2
pkgrel32=2
pkgdesc="Linux Audio Developer's Simple Plugin API (LADSPA)"
arch=('x86_64')
url="http://www.ladspa.org/"
license=('GPL')
depends=('lib32-gcc>=4.0.2' 'ladspa')
source=("ftp://ftp.archlinux.org/extra/os/i686/$pkgname32-$pkgver-$pkgrel32-i686.pkg.tar.gz")
md5sums=('fa25b8b33fe146b86a5ab12cc25b3b87')

build() {
  cp -rPfp $startdir/src/usr $startdir/pkg/
  rm -r $startdir/pkg/usr/include
  cd $startdir/pkg/usr/bin
  for file in * ; do
    mv $file ${file}32
  done
  cd $startdir/pkg/usr/lib/ladspa
  for file in * ; do
    mv $file lib32-${file}
  done
}

