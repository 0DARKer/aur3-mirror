# Maintainer: xduugu
pkgname=jgit
pkgver=0.10.1
pkgrel=1
pkgdesc="A 100% pure java implementation of git"
arch=('any')
url="http://eclipse.org/jgit/"
license=('custom:BSD')
depends=('java-runtime')
source=(
    http://download.eclipse.org/jgit/maven/org/eclipse/jgit/org.eclipse.jgit/$pkgver/org.eclipse.jgit-$pkgver.jar
    LICENSE)
noextract=(org.eclipse.jgit_$pkgver.jar)

build() {
  install -Dm644 "$srcdir/org.eclipse.jgit-$pkgver.jar" \
  	"$pkgdir/usr/share/java/$pkgname/org.eclipse.jgit.jar" &&
  install -Dm644 "$srcdir/LICENSE" \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE" || return 1
}

# vim:set ts=2 sw=2 et:
sha256sums=('bc965d20c79435f75b76d609afa8a52a58698dc8377dfafb0864195ca324f8e7'
            '2462df8c3c40d3f1fd2b89e341880c576db21501b20dad0cdd272153c0d6ba0d')
