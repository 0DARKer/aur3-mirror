pkgname=osdlyrics
pkgver=0.2
pkgrel=1
pkgdesc="On Screen Display lyrics compatible with various media players"
arch=('i686' 'x86_64')
url="http://code.google.com/p/osd-lyrics/"
license=('GPL')
depends=(curl libglade dbus-glib)
source=(http://osd-lyrics.googlecode.com/files/osdlyrics-0.2.20080828-1.tar.gz)
md5sums=('b1ef48deea2e03cb15c082cdf69e87ed')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  aclocal
  autoconf
  automake --add-missing
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
