# Idea: Dmitry Stropaloff aka h8

pkgname=jedit-pkgbuild
pkgver=3
pkgrel=1
pkgdesc="PKGBUILD edit mode for jEdit"
arch=('i686' 'x86_64')
url="http://code.pi.co.ua/jedit-pkgbuild"
license=('GPL3')
depends=('jedit-devel' 'sed')
source=(${url}/downloads/pkgbuild-${pkgver}.xml)
install=jedit-pkgbuild.install
changelog=CHANGELOG.markdown

package() {
	cd $srcdir

	install -D -m 644 pkgbuild-${pkgver}.xml $pkgdir/usr/share/jedit/modes/pkgbuild.xml
}

md5sums=('3ebd666c3f75494521679777bd5228a7')
sha256sums=('88ec2fff060de8e10a9c742a5ec62ea8fe36ba3e20c80378aeec659839608992')
