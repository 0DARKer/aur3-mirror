pkgname=deepin-music-player
pkgver=git20120605
pkgrel=2
pkgdesc='Awesome music player with brilliant and tweakful UI Deepin-UI based, gstreamer front-end, with features likes search music by pinyin,quanpin, colorful lyrics supports, and more powerfull functions you will found.'
depends=('gstreamer0.10-python' 'mutagen' 'python2-chardet' 'python2-scipy' 'python2-pyquery' 'python2-cssselect' 'deepin-ui' 'pyxdg' 'python-imaging')
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL-3')
source=('deepin-music-player' 'http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-music-player/deepin-music-player_1+git20120605.orig.tar.gz')

package() {
  install -d  $pkgdir/usr/{bin,share/{icons,deepin-music-player,applications}}
  mv $srcdir/deepin-music-player-1+git20120605/debian/deepin-music-player.desktop $pkgdir/usr/share/applications/
  mv $srcdir/deepin-music-player-1+git20120605/debian/deepin-music-player.png $pkgdir/usr/share/icons/
  mv $srcdir/deepin-music-player-1+git20120605/app_theme $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player-1+git20120605/skin $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player-1+git20120605/src $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player-1+git20120605/COPYING $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player-1+git20120605/AUTHORS $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player $pkgdir/usr/share/deepin-music-player/
  ln -s /usr/share/deepin-music-player/deepin-music-player $pkgdir/usr/bin
}

md5sums=('a2a706f1c44270dedb221f20bd15563b' 'b3c4bfc0043b845b08202dcb21909d70')
