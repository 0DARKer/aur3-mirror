# Contributor: dongfengweixiao <dongfengweixiao@gmail.com>
pkgname=deepin-music-player
pkgver=git2012062119
pkgrel=1
pkgdesc='Awesome music player with brilliant and tweakful UI Deepin-UI based, gstreamer front-end, with features likes search music by pinyin,quanpin, colorful lyrics supports, and more powerfull functions you will found.'
depends=('gstreamer0.10-python' 'mutagen' 'python2-chardet' 'python2-scipy' 'python2-pyquery' 'python2-cssselect' 'deepin-ui' 'pyxdg')
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL-3')
source=('http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-music-player/deepin-music-player_1+git2012062119.orig.tar.gz' 'deepin-music-player')

package() {
  install -d  $pkgdir/usr/{bin,share/{icons,deepin-music-player,applications}}
  install -m 644 $srcdir/deepin-music-player-1+git2012062119/debian/deepin-music-player.desktop $pkgdir/usr/share/applications/
  install -m 644 $srcdir/deepin-music-player-1+git2012062119/debian/deepin-music-player.png $pkgdir/usr/share/icons/
  install -m 644 $srcdir/deepin-music-player-1+git2012062119/COPYING $pkgdir/usr/share/deepin-music-player/
  install -m 644 $srcdir/deepin-music-player-1+git2012062119/AUTHORS $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player-1+git2012062119/app_theme $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player-1+git2012062119/skin $pkgdir/usr/share/deepin-music-player/
  mv $srcdir/deepin-music-player-1+git2012062119/src $pkgdir/usr/share/deepin-music-player/
  sed -i '1s/python/python2.7/' $pkgdir/usr/share/deepin-music-player/src/main.py
  install -m 755 deepin-music-player $pkgdir/usr/bin
}

md5sums=('f4bab06a03f4d206d785f64d10ca90d3'
         '33dd7381f2cf1882cc15229ff6ce8ba9')
