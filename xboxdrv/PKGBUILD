# Maintainer: Jack Mitchell <jgm11@le.ac.uk>
pkgname=xboxdrv
pkgver=0.7.2
pkgrel=1
pkgdesc="A XBox/XBox 360 gamepad driver - as alternative to the xpad-kernel modul - with more configurability, runs in userspace and supports XBox 360 Guitar and Drumkit"
arch=('i686' 'x86_64')
url="http://pingus.seul.org/~grumbel/xboxdrv/"
license=('GPL')
groups=()
depends=('dbus-python' 'libusb')
makedepends=('scons' 'boost')
install=
source=(http://pingus.seul.org/~grumbel/xboxdrv/$pkgname-linux-$pkgver.tar.bz2)
md5sums=('e6946f03169e6876807f630cfc7fab4f')
noextract=()


build() {
  cd "$srcdir/$pkgname-linux-$pkgver"

  scons || return 1
  install -D -m755 $startdir/src/$pkgname-linux-$pkgver/$pkgname \
	$startdir/pkg/usr/bin/$pkgname 
}
