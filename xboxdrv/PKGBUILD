# Maintainer: Jack Mitchell <jgm11@le.ac.uk>
pkgname=xboxdrv
pkgver=0.7.3
pkgrel=2
pkgdesc="An XBox/XBox 360 gamepad driver - as alternative to the xpad-kernel module with more configurability, runs in userspace and supports XBox 360 Guitar and Drumkit"
arch=('i686' 'x86_64')
url="http://pingus.seul.org/~grumbel/xboxdrv/"
license=('GPL')
groups=()
depends=('dbus-python' 'libusb' 'boost')
makedepends=('scons')
install=
source=(http://pingus.seul.org/~grumbel/xboxdrv/$pkgname-linux-$pkgver.tar.bz2)
md5sums=('caa3e41fd30e1d9a860ee7d721f849fc')
noextract=()


build() {
  cd "$srcdir/$pkgname-linux-$pkgver"

  scons || return 1
  install -D -m755 $startdir/src/$pkgname-linux-$pkgver/$pkgname \
	$startdir/pkg/usr/bin/$pkgname 
}
