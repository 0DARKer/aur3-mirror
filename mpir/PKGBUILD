# Maintainer: Rémy Oudompheng <oudomphe@clipper.ens.fr>
pkgname=mpir
pkgver=2.3.1
pkgrel=1
pkgdesc="Library for multiple precision integers and rationals"
arch=('i686' 'x86_64')
url="http://www.mpir.org/"
license=('GPL')
depends=('gcc-libs')
source=(http://www.mpir.org/mpir-$pkgver.tar.bz2)
md5sums=('1f05dcf796dd12312509023dff0f2d34')

build() {
  cd "$srcdir/mpir-$pkgver"
  [[ "$CARCH" == "i686" ]] && export ABI=32
  ./configure --prefix=/usr --enable-cxx 
  make
}

check() {
  cd "$srcdir/mpir-$pkgver"
  make check
}

package() {
  cd "$srcdir/mpir-$pkgver"
  make DESTDIR="$pkgdir" install
}
