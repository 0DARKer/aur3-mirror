# Maintainer: Oscar Pereira <gauthma dot san att gmail com>
pkgname=perl-file-keepass
pkgver=2.03
pkgrel=2
pkgdesc="Interface to KeePass V1 and V2 database files"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-crypt-rijndael' 'perl-digest-sha' 'perl-compress-zlib' 'perl-xml-parser')
url='http://search.cpan.org/dist/File-KeePass'
source=('http://search.cpan.org/CPAN/authors/id/R/RH/RHANDOM/File-KeePass-2.03.tar.gz')
md5sums=('085da6ef1ada886ca3e9b8724fc213b3')

build() {
  cd $srcdir/File-KeePass-$pkgver
  PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL="--skipdeps" PERL5LIB="" perl Makefile.PL INSTALLDIRS=vendor
	make
	make test
}

package() {
  cd $srcdir/File-KeePass-$pkgver
	make install DESTDIR=$pkgdir
}
