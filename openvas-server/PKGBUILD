# Contributor: Ermak <ermak@email.it>
pkgname=openvas-server
pkgver=2.0.2
pkgrel=1
pkgdesc="The OpenVAS server"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
depends=('openvas-libraries' 'openvas-libnasl')
install=$pkgname.install
source=(http://wald.intevation.org/frs/download.php/593/$pkgname-$pkgver.tar.gz $pkgname.rc $pkgname.install)
md5sums=('87d4727e9cba146c1e28003e30f2d5ee'
         'afaa392eebb28fdadeaeb63518e2d8e0'
         '0647d41f033dbe5ad7e7cea7749f8784')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR="$pkgdir/" install

  #install the rc.d script
  install -D -m755 ../$pkgname.rc $startdir/pkg/etc/rc.d/openvasd
}

# vim:set ts=2 sw=2 et:
