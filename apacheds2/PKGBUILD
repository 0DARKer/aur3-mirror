# Contributor: Juan Diego Tascon

pkgname=apacheds2
_pkgname=apacheds
pkgver=2.0.0M12
_pkgver=2.0.0-M12
pkgrel=1
pkgdesc="An LDAPv3 compliant embeddable directory server written entirely in Java v2.0"
arch=(i686 x86_64)
url="http://directory.apache.org/"
license=('APACHE')
depends=('java-runtime=7')
source=("http://mirror.olnevhost.net/pub/apache/directory/${_pkgname}/stable/2.0/${_pkgver}/${_pkgname}-${_pkgver}.tar.gz")

package() {
  install -d -m 0755 ${pkgdir}/opt/${_pkgname}
  cp -a ${srcdir}/${_pkgname}-${_pkgver}/* ${pkgdir}/opt/${_pkgname}
  install -d -m 0755 ${pkgdir}/usr/bin
  chmod 755 ${pkgdir}/opt/${_pkgname}/bin/${_pkgname}.sh
  ln -sf /opt/${_pkgname}/bin/${_pkgname}.sh ${pkgdir}/usr/bin/${_pkgname}
}

# vim:set ts=2 sw=2 et:
md5sums=('3491f916f3bc8df16eeb43ced3092607')
sha256sums=('20ac0f83ae1d679a7111964bc1e534eaf61a2ecd4a80adc2bc236924a555e149')
