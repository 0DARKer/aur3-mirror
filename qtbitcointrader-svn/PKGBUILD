# Maintainer: Daniel Spies <daniel dot spies at fuceekay dot com>

pkgname=qtbitcointrader-svn
_svnname=QtBitcoinTrader
pkgver=258
pkgrel=1
pkgdesc="Secure Multi Trading Client for Bitcoin"
arch=('x86_64' 'i686')
url="http://qtopentrader.com/"
license=('GPL3')
provides=('qtbitcointrader')
conflicts=('qtbitcointrader')
depends=('qt4')
optdepends=()
makedepends=('qt4')
source=("svn+https://github.com/JulyIGHOR/${_svnname}")
sha256sums=('SKIP')
install=qtbitcointrader.install

pkgver() {
   # going to use the testing branch, as it seems to be the main working branch
	cd ${srcdir}/${_svnname}/branches/testing/src/
	local ver="$(svnversion)"
	printf "%s" "${ver//[[:alpha:]]}"
}

build() {
   # going to use the testing branch, as it seems to be the main working branch
   cd ${srcdir}/${_svnname}/branches/testing/src/
   qmake-qt4 QtBitcoinTrader.pro -r PREFIX="/usr"
   make
}

package() {
	# going to use the testing branch, as it seems to be the main working branch
   cd ${srcdir}/${_svnname}/branches/testing/src/
   make INSTALL_ROOT="${pkgdir}/" install
}

