# Contributor: shaohua <shaohua0110@gmail.com>
pkgname=fxlinuxprint
pkgver=1.0.1
pkgrel=1
pkgdesc="FUJI XEROX ApeosPort 450 I"
arch=('i686')
url='http://www.fujixerox.co.jp'
license=('FUJI XEROX')
depends=('cups')
makedepends=('rpm' 'cpio')
source=('ftp://download.fujixerox.co.jp/pub/exe/apeosport/c4300series/fxlinuxprint-1.0.1-1.i386.rpm')
md5sums=('897556eae0355d8497eae5ec07c4f510')

build() {
	local ROOT=../pkg
	rpm2cpio $source | (cd $ROOT && cpio -idmu --no-preserve-owner)
	mv $ROOT/usr/share/cups/model/FujiXerox/en/fxlinuxprint.ppd $ROOT/usr/share/cups/model/
	rm $ROOT/usr/share/cups/model/FujiXerox/ -r
}

