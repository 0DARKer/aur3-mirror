# Maintainer: Army <uli armbruster google>

pkgname=luakit-noscript-git
pkgver=20110702
pkgrel=1
pkgdesc="noscript plugin for luakit"
arch=('any')
url="http://www.luakit.org/projects/luakit" 
license=('GPL3')
depends=('luakit-git')
makedepends=('git')
install=$pkgname.install

_gitroot="git://gist.github.com/1026346.git"
_gitname="noscript"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  install -Dm644 "${srcdir}/${_gitname}/noscript.lua" "${pkgdir}/usr/share/luakit/lib/noscript.lua"
}
