# Maintainer: David Roheim <david dot roheim at gmail dot com>
pkgname=zendframework2-manual-en
pkgver=2.0.0
pkgrel=1
pkgdesc="End-User Documentation for ZendFramework2"
arch=('any')
url="http://framework.zend.com/"
license=('BSD')
source=("http://packages.zendframework.com/releases/ZendFramework-$pkgver/ZendFramework-$pkgver-manual-en.tar.gz")
sha256sums=('060aeaad80a3e17f836f948e189c70304e5fe7ccde71d41fdfbf4f6bbff2975b')

build() {
    true
}

package() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/share/zendframework2/documentation/manual-en"
    cp -R . "$pkgdir/usr/share/zendframework2/documentation/manual-en"
    rm "$pkgdir/usr/share/zendframework2/documentation/manual-en/ZendFramework-$pkgver-manual-en.tar.gz"
}

