# Contributor: lp76 <l.peduto@gmail.com>
pkgname=screenie
pkgver=1.30.0
pkgrel=3
pkgdesc="Small and lightweight GNU screen wrapper"
url="http://pubwww.fhzh.ch/~mgloor/screenie.html"
arch=('i686')
license=('GPL')
depends=('screen' 'awk')
source=(http://distfiles.gentoo.org/distfiles/$pkgname-$pkgver.tar.gz)
md5sums=('bdd72ff7655c1ec24bb019cccffce7d3')

build() {
  cd $startdir/src/$pkgname-$pkgver
  mkdir -p $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/usr/share/man/man1
  gzip screenie.1
  install -m 0755 screenie $startdir/pkg/usr/bin
  install -m 0644 screenie.1.gz $startdir/pkg/usr/share/man/man1 
}
