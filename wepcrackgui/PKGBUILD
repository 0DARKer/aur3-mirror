pkgname=wepcrackgui
pkgrealname=WepCrack
pkgver=0.8.4
pkgrel=1
pkgrealver=Rel_08_2
pkgdesc="Wepcrack is a mono gui for aircrack, aireplay and other related wep cracking tools"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/wepcrackgui"
license=('GPL')
depends=('mono' 'aircrack-ng' 'gtk-sharp-2' 'mdk3')
source=('http://downloads.sourceforge.net/project/$pkgname/$pkgrealver/WepCrack0.8.2.tar.gz')
md5sums=('47c046313d6e4227950f1e1c91ae14f7')

build() {
  mkdir -p $pkgdir/opt/wepcrackgui
  cp -r $srcdir/WepCrack/* $pkgdir/opt/wepcrackgui/
}
