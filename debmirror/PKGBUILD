pkgname=debmirror
pkgver=2.4.6
pkgrel=1
pkgdesc="Debian partial mirror script, with ftp and package pool support"
url="http://debian.org/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('bzip2' 'perl-compress-zlib' 'perl-digest-sha1' 'perl-lockfile-simple' 'perl-libwww' 'rsync')
source=("http://ftp.de.debian.org/debian/pool/main/d/debmirror/debmirror_$pkgver.tar.gz")
md5sums=('1f5c3eca856622de6f42ce6c44cb417e')

build() {
  mkdir -p $pkgdir/usr/bin
  cp $srcdir/debmirror/debmirror $pkgdir/usr/bin
  chmod a+x $pkgdir/usr/bin/debmirror
}
