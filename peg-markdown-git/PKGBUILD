pkgname=peg-markdown-git
pkgver=20130519
pkgrel=1
pkgdesc="An implementation of markdown in C, using a PEG grammar"
arch=('i686' 'x86_64')
url="https://github.com/jgm/peg-markdown/"
license=('GPL' 'MIT')
depends=('glib2')
makedepends=('git')
provides=('markdown')
conflicts=('markdown')
source=('git://github.com/jgm/peg-markdown.git')
md5sums=('SKIP')

pkgver() {
  cd peg-markdown
  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

build() {
  cd peg-markdown
  make
}

package() {
  cd peg-markdown
  install -Dm755 markdown "$pkgdir"/usr/bin/markdown
  install -D LICENSE "$pkgdir"/usr/share/licenses/peg-markdown/LICENSE
}
