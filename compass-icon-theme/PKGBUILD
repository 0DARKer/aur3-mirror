# Maintainer: foalsrock <foalsrock at gmail dot com>

pkgname=compass-icon-theme
pkgver=1.2.1
pkgrel=2
pkgdesc="The alternative icon theme for the .nitrux Operating System"
url="http://store.nitrux.in/"
license=('cc-by-nc-nd-4.0')
arch=('any')
depends=('gtk2')
source=("http://store.nitrux.in/files/Compass.tar.gz")
md5sums=('639aff2bbebd72b841c2f84548c3279d')

package() {
  mkdir -p "${pkgdir}/usr/share/icons/"
  cp -r "${srcdir}/Compass" "${pkgdir}/usr/share/icons/"

  install -Dm644 "${srcdir}/Compass/COPYING" \
    "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
