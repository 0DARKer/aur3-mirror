# Contributor: Jan de Groot <jgc@archlinux.org>

pkgname=gdeskcal
_pkgname=gDeskCal
pkgver=1.01
pkgrel=4
pkgdesc="gDeskCal is a cute little eye-candy calendar for your desktop."
arch=(any)
license=('GPL')
url="http://customize.org/gDeskCal"
depends=('pygtk')
makedepends=('perlxml')
source=(ftp://ftp.icm.edu.pl/vol/rzm1/linux-fedora-secondary/development/source/SRPMS/$pkgname-$pkgver-2.fc10.src.rpm gdeskcal-utf8.diff)
md5sums=('9a472aef4592e173a5e10ac1a2f95d7a'
         '9a023efe0efbe3a2f3877da555e6986b')

build() {
  cd "$srcdir"
  tar xzf $_pkgname-$pkgver.tar.gz
  cd "${srcdir}/$_pkgname-$pkgver"
  patch -p1 < ../gdeskcal-utf8.diff
  sed -i 's#python#python2#' gdeskcal
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/$_pkgname-$pkgver"
  make DESTDIR=${pkgdir} install
}
