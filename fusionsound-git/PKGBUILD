# Contributor: Evangelos Foutras <foutrelis@gmail.com>

pkgname=fusionsound-git
pkgver=20081018
pkgrel=1
pkgdesc="A very powerful audio sub system in the manner of DirectFB and a technical demonstration of Fusion."
arch=(i686 x86_64)
url="http://www.directfb.org/index.php?path=Platform%2FFusionSound"
license="LGPL2"
depends=('directfb')
makedepends=('git')
provides=('fusionsound')
conflicts=('fusionsound')
source=(ffmpeg.patch)
md5sums=('0e0e0eecc3e83913655222e5e5b8039d')

_gitroot="git://git.directfb.org/git/directfb/core/FusionSound.git"
_gitname="FusionSound"

build() {
  msg "Connecting to git.directfb.org GIT server...."

  if [[ -d $startdir/src/$_gitname ]] ; then
    cd $_gitname
    git pull origin || return 1
    msg "The local files are updated."
  else
    git clone $_gitroot || return 1
  fi

  msg "GIT checkout done"

  # Remove old -build
  rm -rf $startdir/src/$_gitname-build

  cp -r $startdir/src/$_gitname $startdir/src/$_gitname-build
  cd $startdir/src/$_gitname-build

  msg "Applying ffmpeg patch"

  patch -Np0 -i $srcdir/ffmpeg.patch

  msg "Starting make..."

  ./autogen.sh --prefix=/usr --without-examples
  make || return 1
  make prefix=$startdir/pkg/usr install
}
