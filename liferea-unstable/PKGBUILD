# Contributor: Leonid Selivanov <bravebug at gmail dot com>

pkgname=liferea-unstable
pkgver=1.7.4
pkgrel=1
pkgdesc="A GTK desktop news aggregator for online news feeds and weblogs - Unstable"
arch=('i686' 'x86_64')
url="http://liferea.sourceforge.net/"
license=('GPL')
depends=('gconf>=2.26.0' 'libwebkit>=1.1.10' 'libnotify>=0.4.5' 'libxslt>=1.1.24' 'gtk2>=2.18.0' 'sqlite3>=3.6.15' 'libsoup>=2.28.2' 'libunique')
makedepends=('pkgconfig' 'diffutils' 'intltool')
optdepends=()
options=('!libtool' '!emptydirs')
conflicts=('liferea' 'liferea-dev')
provides=('liferea')
source=(http://downloads.sourceforge.net/sourceforge/liferea/liferea-${pkgver}.tar.gz)
md5sums=('69ece60acc93a58cffb66e0e4f753704')

build() {
  cd "${srcdir}/liferea-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-schemas-install || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  
  install -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" "${pkgdir}"/etc/gconf/schemas/*.schemas || return 1
  rm -f "${pkgdir}"/etc/gconf/schemas/*.schemas
}
