pkgname=gmt-coast
pkgver=2.1.0
pkgrel=1
pkgdesc="The full resolution coastline dataset for the Generic Mapping Tools."
arch=('i686' 'x86_64')
url="http://gmt.soest.hawaii.edu/"
license=('GPL')
depends=('netcdf' 'gmt')
makedepends=()
provides=()
source=(ftp://ftp.soest.hawaii.edu/gmt/GSHHS$pkgver'_'full.tar.bz2)
md5sums=(da679a412056e401bb624a213d4b11d6)

build() {
    cd $startdir/src
    mkdir -p $startdir/pkg/usr/share/gmt/coast
    install -m 644 $startdir/src/share/coast/binned* $startdir/pkg/usr/share/gmt/coast
}

