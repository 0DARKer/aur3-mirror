# Contributor: Benjamin Sick
pkgname=gmt-coast
pkgver=2.1.1
pkgrel=1
pkgdesc="The full resolution coastline dataset for the Generic Mapping Tools."
arch=('i686' 'x86_64')
url="http://gmt.soest.hawaii.edu/"
license=('GPL')
depends=('netcdf' 'gmt')
makedepends=()
provides=()
source=(ftp://ftp.soest.hawaii.edu/gmt/GSHHS$pkgver'_'full.tar.bz2
        ftp://ftp.soest.hawaii.edu/gmt/GSHHS$pkgver'_'high.tar.bz2)
md5sums=('603c802f4408e33db974508ebc647ef9'
         '78e23d1444452fa8ddc9b67e2ad89a01')

build() {
  cd $startdir/src
  mkdir -p $startdir/pkg/usr/share/gmt/coast
  install -m 644 $startdir/src/share/coast/binned* \
    $startdir/pkg/usr/share/gmt/coast
}

