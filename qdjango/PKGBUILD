# Maintainer: Spike29 <leguen.yannick@gmail.com>

pkgname='qdjango'
pkgver='0.2.5'
pkgrel=1
pkgdesc='a Qt-based C++ web framework'
arch=('i686' 'x86_64')
license=('LGPL 2.1')
url='http://code.google.com/p/qdjango/'
groups=
depends=('qt')
makedepends=
options=
install=
source=('http://qdjango.googlecode.com/files/qdjango-0.2.5.tar.gz')
md5sums=('59c6cd6f6f50988d65acc4eff956bf50')

build() {
	cd "$srcdir/$pkgname-$pkgver/"
	mkdir build && cd build/
	qmake PREFIX=/usr ..
	make 	
}

package() {
	cd "$srcdir/$pkgname-$pkgver/build/"
	make INSTALL_ROOT="$pkgdir/" install
}
