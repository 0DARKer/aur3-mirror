# Contributor: Douglas Thrift <douglas@douglasthrift.net>
pkgname=realpath
pkgver=1.10
pkgrel=1
pkgdesc="return the canonicalized absolute pathname"
url="http://packages.debian.org/unstable/utils/realpath.html"
depends=('glibc')
source=(http://ftp.debian.org/debian/pool/main/r/realpath/${pkgname}_$pkgver.tar.gz)
md5sums=('1f2b2bceaacadf79162a9cbb5956c3b6')

build()
{
  cd $startdir/src/$pkgname-$pkgver
  make VERSION=$pkgver realpath || return 1
  install -Dp -m 0755 realpath $startdir/pkg/usr/bin/realpath
  install -Dp -m 0644 man/realpath.1 $startdir/pkg/usr/man/man1/realpath.1
}
