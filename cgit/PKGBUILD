# Contributor: Andreas Baumann <abaumann at yahoo dot com>

pkgname=cgit
pkgver=0.8.3.4
pkgrel=1
pkgdesc="A web interface for git written in plain C"
arch=('i686' 'x86_64')
url="http://hjemli.net/git/cgit"
license=('GPL')
depends=('openssl')
makedepends=('git>=1.5.3' 'zlib' 'curl' 'asciidoc')
backup=('etc/cgitrc')
install=cgit.install
source=(http://hjemli.net/git/cgit/snapshot/${pkgname}-${pkgver}.tar.bz2
        cgitrc)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make get-git
  make
  make man-doc
}

package() {
  # The binary cgit.cgi stores the build directory. I'm not sure why yet.
  # makepkg will print a warning.

  cd ${srcdir}/${pkgname}-${pkgver}
  make CGIT_SCRIPT_PATH=/srv/http/cgit DESTDIR=${pkgdir} install
  mkdir -p ${pkgdir}/var/cache/cgit
  mkdir -p ${pkgdir}/etc
  install -m0644 ${srcdir}/cgitrc ${pkgdir}/etc/cgitrc
  install -D -m0644 ${srcdir}/${pkgname}-${pkgver}/cgitrc.5 ${pkgdir}/usr/share/man/man5/cgitrc.5
}

md5sums=('30a28cb991d616970d19a5b5c470864a'
         'c57ee0f64d02176f6f0c74574fad3aed')
md5sums=('712e4d3013d754aa5752e0101188cf32'
         'c57ee0f64d02176f6f0c74574fad3aed')
