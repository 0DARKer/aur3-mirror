pkgname=massren
pkgver=1.1.0
pkgrel=1

_pkgbasever=${pkgver/rc/-rc}

source=(https://github.com/laurent22/massren/releases/download/v1.1.0/massren.linux-amd64.tar.gz)
md5sums=('4a077ad258c2c41ee50cc8ae4d2b65cc')

pkgdesc="Easily rename multiple files using your text editor"
url="https://github.com/laurent22/massren"
arch=(x86_64)
license=(MIT)


package() {

  mkdir -p ${pkgdir}/usr/bin
  install -m755 "$srcdir/massren" "$pkgdir/usr/bin/massren"
}

