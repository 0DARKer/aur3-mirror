# Maintainer: speps <speps at aur dot archlinux dot org>

pkgname=gst-buzztrax
pkgver=0.7.0
pkgrel=1
pkgdesc="Buzztrax gstreamer extensions (former Buzztard)"
arch=('i686' 'x86_64')
url="http://www.buzztrax.org"
license=('LGPL')
depends=('bml>=0.7.0' 'fluidsynth' 'gstreamer0.10' 'orc')
provides=("gst-buzztard=$pkgver")
conflicts=('gst-buzztard')
replaces=('gst-buzztard')
options=('!libtool')
source=("https://github.com/Buzztrax/gst-buzztrax/archive/RELEASE_0_7.tar.gz")
#source=("http://downloads.sourceforge.net/sourceforge/buzztard/$pkgname-$pkgver.tar.gz")
md5sums=('ee48523901dd54214f940c45425d8bed')

build() {
  cd "$srcdir/$pkgname-RELEASE_0_7"
  ./autogen.sh
  ./configure --prefix=/usr \
              --enable-static=no
  make
}

package() {
  cd "$srcdir/$pkgname-RELEASE_0_7"
  make DESTDIR="$pkgdir/" install
}
