# Contributor: Andreas Hauser <andy-aur@splashground.de>
pkgname=nrgrep
pkgver=1.1.2
pkgrel=1
pkgdesc="a very fast grep implementation (much faster than e.g. GNU grep)"
url="http://www.dcc.uchile.cl/~gnavarro/software/"
license="custom"
makedepends=(gcc)
arch=(i686 x86_64)
source=(http://www.dcc.uchile.cl/~gnavarro/software/nrgrep.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  install nrgrep $startdir/pkg/usr/bin/nrgrep
  mkdir -p $startdir/pkg/usr/share/licenses/nrgrep
  install COPYRIGHT $startdir/pkg/usr/share/licenses/nrgrep/COPYING
}
md5sums=('509a4542ba88963f2b9811a196055b15')
