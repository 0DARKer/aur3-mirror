# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-traitsgui-git
pkgver=20110205
pkgrel=1
pkgdesc="Traits-capable windowing framework"
arch=('i686' 'x86_64')
url="https://github.com/enthought/traitsgui"
license=('BSD')
depends=('python2' 'python2-enthoughtbase' 'python2-traits' 'python2-traitsbackend')
makedepends=('git' 'python2-distribute')
optdepends=('python2-traitsbackendqt' 'python2-traitsbackendwx')
provides=('python2-traitsgui')
conflicts=('python-enthought-traits' 'python2-traitsgui' 'python-ets-traitsgui-svn')
replaces=('python-ets-traitsgui-svn')
options=(!emptydirs)

_gitroot="https://github.com/enthought/traitsgui.git"
_gitname="traitsgui"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

