# Maintainer: GI_Jack <iamjacksemail@hackermail.com>
# Based on PKGBUILD firefox-extension-httpseverywhere
#

_plugin_name=collusion
_plugin_version=1.0.8
pkgdesc="Firefox extension to discover who's tracking you online(aka lightbeam)"
license=('MPLv2')

pkgname=firefox-extension-$_plugin_name
pkgver=$_plugin_version
pkgrel=1
arch=('any')
url="https://www.mozilla.org/en-US/collusion/"
depends=("firefox>=3.5")
source=("https://addons.cdn.mozilla.net/storage/public-staging/363974/lightbeam_for_firefox-1.0.8-fx.xpi")
md5sums=('2e0de7d83dbc1189f85ea652071206c1')
sha1sums=('523185e00d87c7cb75d0ed514491cbb45d043075')
package(){
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  install -d $dstdir
  cp -r * $dstdir
  rm $dstdir/lightbeam_for_firefox-1.0.8-fx.xpi
  chmod -R 755 $dstdir
}
