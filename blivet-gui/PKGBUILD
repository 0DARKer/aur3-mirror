pkgname=blivet-gui
pkgver=0.1.8
pkgrel=1
pkgdesc='GUI tool for storage configuration'
arch=(any)
license=(GPL)
url='http://github.com/vojtechtrefny/blivet-gui'
depends=(python2 python2-blivet python2-pyparted python2-pykickstart python2-gobject python2-pyblock python2-cryptsetup urlgrabber)
source=(http://github.com/vojtechtrefny/blivet-gui/archive/$pkgver.zip)
sha1sums=('1071aea1d4f5e21687986c7576b21fa25e6ddf6c')

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
}
