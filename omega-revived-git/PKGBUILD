# Contributor: William Giokas (KaiSforza) <1007380@gmail.com>

pkgname=omega-revived-git
pkgver=0.90.5
pkgrel=1
pkgdesc="A roguelike game based on omega-0.90.4 originally by the Laurence Brothers in the late 80's"
arch=('i686' 'x86_64')
url="https://github.com/Lyle-Tafoya/Omega_Revived"
license=('GPL2')
depends=('ncurses')
makedepends=('git')
conflicts=('omega-revived')
provides=('omega-revived')

source=("$pkgname"::'git://github.com/Lyle-Tafoya/Omega_Revived.git')
# Because the sources are not static, skip Git checksum:
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  # Use the tag of the last commit
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/lib/omega_revived
  mv omega-revived $pkgdir/usr/bin/
  mv lib/* $pkgdir/usr/lib/omega_revived
}

