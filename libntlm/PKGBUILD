# Contributor: Robin Martinjak <rob@kingofnerds.net>
pkgname=libntlm
pkgver=1.2
pkgrel=2
pkgdesc="a library that implement Microsoft's NTLM authentication"
arch=('i686' 'x86_64')
source=(http://josefsson.org/libntlm/releases/$pkgname-$pkgver.tar.gz)
url="http://josefsson.org/libntlm/"
license=('LGPL')
options=('!libtool')
md5sums=('13b40af721b29005652fb429a3ae9582')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ls
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
} 

