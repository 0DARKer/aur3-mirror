# Maintainer: Your Name <rogerduran@gmail.com>
pkgname=twister-core-git
pkgver=4551.17af248
pkgrel=1
pkgdesc="Twister core - p2p microblogging"
arch=(i686 x86_64 armv7h)
url="http://twister.net.co/"
license=('MIT' 'BSD')
groups=()
depends=(openssl db boost-libs miniupnpc)
makedepends=('git' 'boost')
source=()
md5sums=()

_gitroot=https://github.com/miguelfreitas/twister-core.git
_gitname=twister-core

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  cd "$srcdir/$_gitname-build/libtorrent"
  ./bootstrap.sh
  ./configure --enable-logging --enable-debug --enable-dht
  make

  cd "$srcdir/$_gitname-build/src"
  make DESTDIR="$pkgdir/" -f makefile.unix
}

package() {
  cd "$srcdir/$_gitname-build/src/"
  mkdir -p "$pkgdir/usr/bin/"
  cp twisterd "$pkgdir/usr/bin/"
}

pkgver() {
  cd $_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}


# vim:set ts=2 sw=2 et:
