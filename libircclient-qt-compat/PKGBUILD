# Contributor: Scott Olson <scott@scott-olson.org>
# Maintainer: Marek Otahal <markotahal et gmail >
pkgname=libircclient-qt-compat
_pkg=libircclient-qt
pkgver=0.3.2
pkgrel=1
pkgdesc="A cross-platform IRC client library written with Qt 4, compatibility version to run with kopete-plugin-irc and allow IRC chat in Kopete"
arch=(i686 x86_64)
url="https://bitbucket.org/jpnurmi/libircclient-qt"
license=('LGPL')
depends=(qt\>=4.0)
optdepends=(icu)
provides=(libircclient-qt=0.3.2)
conflicts=(libircclient-qt)
source=(https://bitbucket.org/jpnurmi/libircclient-qt/downloads/${_pkg}-src-$pkgver.tar.gz)
md5sums=('c825f9b5a62f8c214f328c92ba623ea7')

build() {
  cd "$srcdir/${_pkg}-$pkgver"

  qmake
  make 
  make INSTALL_ROOT=$pkgdir QTDIR=/usr install
}

