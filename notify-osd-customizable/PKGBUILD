# Maintainer: 4javier <4javiereg4 at gmail dot com>
pkgname=notify-osd-customizable
_realname=notify-osd
pkgver=0.9.29
pkgrel=8
pkgdesc="daemon that displays passive pop-up notifications, with leolik patch added"
arch=(i686 x86_64)
url="https://launchpad.net/notify-osd"
license=('GPL')
groups=()
depends=('libwnck' 'gconf')
optdepends=('notifyconf:gui to customize notifies appearence')
makedepends=('pkgconfig' 'libnotify')
provides=('notification-daemon' 'notify-osd')
conflicts=('notification-daemon' 'notify-osd')
install=conf.install
source=($url/lucid/ubuntu-10.04-beta-2/+download/$_realname-$pkgver.tar.gz notify-osd.patch notify-osd conf.install border.patch)
md5sums=('13df20eb3c6d06c17eef07400e1650d8'
         '27a221be7c504c116aa685966389034e'
         '696ffbdf8adc98404a22645627ffe857'
         '361342b553fae1cdc73b44584320a566'
         '17d44d698322d66c86e3df95b9f0fcec')

build() {
  cd "$srcdir/$_realname-$pkgver"
  patch -Np0 -i ${srcdir}/notify-osd.patch
  patch -Np0 -i ${srcdir}/border.patch
  ./configure --prefix=/usr --libexecdir=/usr/lib/$pkgname --disable-gtktest
  make || return 1
 }

package() {
	cd "$srcdir/$_realname-$pkgver"
	make DESTDIR="$pkgdir/" install
	install -D -m644 ${srcdir}/notify-osd ${pkgdir}/etc/skel/.notify-osd
 }



