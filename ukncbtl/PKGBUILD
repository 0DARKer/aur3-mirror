# Maintainer: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=ukncbtl
pkgver=beta24
pkgrel=1
pkgdesc="Emulator of the Soviet UKNC (MS-0511) computers"
arch=('i686')
url="http://code.google.com/p/ukncbtl/"
license=('LGPL')
depends=('qt')
source=("http://ukncbtl.googlecode.com/files/QtUkncBtl-${pkgver}-linux.tar.gz"
        "${pkgname}.sh")
md5sums=('7b74f41152f086e40a1d7b32cb73a661'
         '3d156411e396727790ce440008e3d0d8')

package() {
  cd "${srcdir}"

  # Install program files
  install -Dm755 QtUkncBtl "${pkgdir}/opt/${pkgname}/QtUkncBtl"
  install -m644 *.so.4 *.bin "${pkgdir}/opt/${pkgname}"

  # Install the launcher
  install -Dm755 "${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
}
