# Contributor: Sebastien <sebcactus@gmail.com>

pkgname=sptk
pkgver=3.4.1
pkgrel=1
pkgdesc="The Speech Signal Processing Toolkit (SPTK) is a suite of speech signal processing tools for UNIX environments"
arch=('i686' 'x86_64')
url="http://sp-tk.sourceforge.net/"
license=('custom')
depends=('glibc')
source=(http://downloads.sourceforge.net/sp-tk/SPTK-${pkgver}.tar.gz ${pkgname}.sh)
md5sums=('42615c62edcc0e1df5a83535d0b074f2' '852880da62e38e47bf16ef7c304098f5')

build() {
  cd "${srcdir}/SPTK-${pkgver}"
  ./configure --prefix=/opt/${pkgname} || return 1
  make || return 1
}

package() {
  cd "${srcdir}/SPTK-${pkgver}"
  make prefix="${pkgdir}/opt/${pkgname}" install || return 1
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE" || return 1
  install -D -m755 ../${pkgname}.sh "${pkgdir}/etc/profile.d/${pkgname}.sh" || return 1
}
