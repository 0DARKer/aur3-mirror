 #Maintainer: xelados <daniel.l.campbell@gmail.com>
 #Contributor: mpie <michael.kyne-phillips1@ntlworld.com> 
 pkgname=mahjongg3d
 pkgver=0.96
 pkgrel=4
 pkgdesc="An OpenGL Mahjongg game"
 arch=('i686')
 license=('unknown')
 url="http://www.reto-schoelly.de/mahjongg3d/" 
 depends=('qt3') 
 source=(http://www.reto-schoelly.de/mahjongg3d/$pkgname-$pkgver.tar.bz2) 
 md5sums=('f5a08f4d1f375f3e4e94a2d392fe21d7')


 build(){ 
mkdir -p $startdir/pkg/usr/bin
mkdir -p $startdir/pkg/usr/share/games/mahjongg3d
cd $startdir/src/$pkgname.release
sed -i -e"s:default:linux-g++:g" Makefile.doit
touch src/openglwidget.h 
make -f Makefile.doit PREFIX=/usr GAMEDATA_PREFIX=/usr/share/games|| return 1 
mv $startdir/src/$pkgname.release/bin/mahjongg3d $startdir/pkg/usr/bin/
mv $startdir/src/$pkgname.release/bin/backgrounds $startdir/pkg/usr/share/games/mahjongg3d/
 mv $startdir/src/$pkgname.release/bin/gra $startdir/pkg/usr/share/games/mahjongg3d/
 mv $startdir/src/$pkgname.release/bin/layouts $startdir/pkg/usr/share/games/mahjongg3d/
mv $startdir/src/$pkgname.release/bin/tilesets $startdir/pkg/usr/share/games/mahjongg3d/
find $startdir/pkg -name '*.la' -exec rm {} \;
}
