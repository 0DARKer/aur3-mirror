# maintainer: a304yuanyuan at gmail.com

pkgname=moonplayer
pkgver=0.19.1
pkgrel=1
pkgdesc="A qt font-end (whose name is used to be funplayer) for mplayer with the abilities of watching and downloading videos from network"
arch=('i686' 'x86_64')
url="https://code.google.com/p/moonplayer"
license=('GPL')
depends=('qt4' 'python2' 'mplayer')
makedepends=('git')
source=("git+https://code.google.com/p/moonplayer/")
sha1sums=('SKIP')

build() {
	cd $srcdir/$pkgname

#	sed -i 's/python/python2/g' moonplayer.pro

	qmake-qt4 moonplayer.pro

	make
}

package() {
	cd $srcdir/$pkgname

	make INSTALL_ROOT=$pkgdir install

	cd $pkgdir/usr/share

	mv icons pixmaps
}