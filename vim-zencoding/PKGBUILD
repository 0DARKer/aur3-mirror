# Maintainer: apkawa <apkawa@gmail.com>
pkgname=vim-zencoding
pkgver=0.45
pkgrel=1
pkgdesc="vim plugins for HTML and CSS hi-speed coding"
arch=(any)
url="http://github.com/mattn/zencoding-vim"
license=('custom')
depends=(vim)
groups=('vim-plugins')
source=(zencoding.vim::http://www.vim.org/scripts/download_script.php?src_id=14026)
md5sums=('d4f33a1456257dca5b835b234a462263')

build() {
    install -d ${pkgdir}/usr/share/vim/vimfiles/plugin
    install ${srcdir}/zencoding.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/

}

