pkgname=tvoeradio-desktop
pkgver=0.2.2
pkgrel=1
pkgdesc="Multiplatform client to listen music from VKontakte.ru and Last.fm services."
arch=('i686' 'x86_64')
url="http://code.google.com/p/tvoeradio-desktop/"
license=('GPL')
depends=('qt')
makedepends=('gcc' 'make' 'subversion' 'pkgconfig')
conflicts=('tvoeradio-desktop-svn')
provides=('tvoeradio-desktop')
replaces=('tvoeradio-desktop-svn')

source=(http://tvoeradio-desktop.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('ba8c83958d08b255b5a0bbd4990e8f4d48afa8c8')

build() {
  cd $startdir/src/$pkgname-$pkgver/
  
  qmake DESTDIR="${pkgdir}/usr/bin" || return 1

  make || return 1
  make DESTDIR="${pkgdir}" install || return 1

# Add freedesktop compatibility
  install -D -m 664 $srcdir/$pkgname-$pkgver/images/icon512.png $pkgdir/usr/share/pixmaps/tvoeradio-desktop.png || return 1
  install -D -m 664 $srcdir/$pkgname-$pkgver/tvoeradio-desktop.desktop $pkgdir/usr/share/applications/tvoeradio-desktop.desktop || return 1
}
