# Maintainer: fordprefect <fordprefect@dukun.de>
pkgname=monochroma-demo
pkgver=0.11
pkgrel=1
pkgdesc="very atmospheric platform jump game based on unity player - demo version"
url="http://monochromagame.com/"
arch=('x86_64' 'i686')
license=('unknown')
depends=('')
source=("http://ams4.dl.dbolical.com/dl/2596eb459ffebaf379f3f3d3902a0b8b/53330a40/2013/07/18/Monochroma_Kickstarter_Linux_Demo_v0.11.zip")
md5sums=('4f33f384cd293c2ce448412a7eb52ca4')
PKGEXT=".pkg.tar"
 
package() {
    mkdir -p "$pkgdir/opt/monochroma-demo" "$pkgdir/usr/bin"
    cp -R "$srcdir/MonochromaBin_Kickstarter_Linux/"* "$pkgdir/opt/monochroma-demo"
    chmod a+x "$pkgdir/opt/monochroma-demo/Monochroma.x86_64" "$pkgdir/opt/monochroma-demo/Monochroma.x86"
    cat > "$pkgdir/usr/bin/monochroma-demo" << \here
#!/bin/bash

if [[ $(uname -m) == "x86_64" ]]
then
    /opt/monochroma-demo/Monochroma.x86_64
else
    /opt/monochroma-demo/Monochroma.x86
fi
here
    chmod a+x "$pkgdir/usr/bin/monochroma-demo"
}
