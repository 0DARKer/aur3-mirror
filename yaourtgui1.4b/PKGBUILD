# Maintainer: Alessio Di Paolosanti
pkgname=yaourt-gui
pkgver=1.4b
pkgrel=1
pkgdesc="Yaourt-Gui is a terminal GUI for Yaourt"
arch=('i686' 'x86_64')
url="http://vkteam.altervista.org/mysoft/yaourt-gui.html"
license=(GPL)
groups=()
depends=(yaourt)
source=(http://vkteam.altervista.org/mysoft/$pkgname$pkgver.tar.gz)

build() {
  cd $srcdir/$pkgname$pkgver
  tar xvfz bin.tar.gz
 
 YGLANG="en"
  [ $(echo $LANG | grep it_IT) ] && YGLANG="it"

  cp bin/$YGLANG/yaourtgui /usr/bin
  cp bin/$YGLANG/yaourtproxy /usr/bin

  chmod +x /usr/bin/yaourtproxy
  chmod +x /usr/bin/yaourt-gui

  rm -rf bin/
}
