# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
pkgname=cdoc
pkgver=0.9.7
pkgrel=1
pkgdesc="Simple documentation tool for C programs and libraries"
arch=('i686' 'x86_64')
url="http://www.annexia.org/freeware/cdoc"
license=('GPL')
depends=('perl')
makedepends=('makeplus')
source=(http://www.annexia.org/_file/$pkgname-$pkgver.tar.gz)
md5sums=('8ac5b0c086accc4abd54c66283abbb1f')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make+
  make+ DESTDIR=$pkgdir install
}
