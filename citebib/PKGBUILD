pkgname=citebib
_pkgname=CiteBib
pkgver=0.1
pkgrel=1
pkgdesc="Generate a nice Bibtex or Latex bibliography according to the document content"
arch=('any')
url="https://github.com/sciunto/CiteBib"
license=('GPL3')
depends=('python')
makedepends=('python-distribute')
source=(https://github.com/downloads/sciunto/${_pkgname}/${pkgname}-${pkgver}.tar.bz2)
md5sums=("fdad628a0b6a40d1455ffbb520407fde")

build() {
  cd "${srcdir}"
  python3 setup.py install --root="${pkgdir}"
}

