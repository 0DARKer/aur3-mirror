# Maintainer: DMBuce <dmbuce@gmail.com>
pkgname=clicraft
pkgver=0.0.3
pkgrel=4
pkgdesc="A command-line wrapper for a minecraft or bukkit server."
arch=("any")
url="https://github.com/DMBuce/clicraft"
license=('BSD')
depends=("bash" "tmux")
makedepends=("git")
#checkdepends=()
optdepends=("c10t: for map.sh action script" "mcexplore: for explore.sh action script")
install=
source=("https://github.com/DMBuce/clicraft/tarball/$pkgver")
md5sums=('18274a6f5275e8328b6c3b830ec76b7f')

build() {
  _builddir="$srcdir/$(tar tf "$startdir/$pkgver" --exclude "DMBuce-$pkgname-*/*")"
  cd "$_builddir"

  make
}

package() {
  _builddir="$srcdir/$(tar tf "$startdir/$pkgver" --exclude "DMBuce-$pkgname-*/*")"
  make -C "$_builddir" prefix=/usr DESTDIR="$pkgdir" install

  install -d "$pkgdir/usr/bin"
  cd "$pkgdir/usr/bin"
  ln -s "../share/clicraft/bin/clicraft"

  cd "$pkgdir/usr/share/clicraft"

  install -d "$pkgdir/etc"
  mv etc "$pkgdir/etc/clicraft"
  ln -s "../../../etc/clicraft" etc

  install -d "$pkgdir/usr/lib"
  mv lib "$pkgdir/usr/lib/clicraft"
  ln -s "../../../usr/lib/clicraft" lib

  install -d "$pkgdir/srv/minecraft"
  ln -s "../../../srv/minecraft" srv

  install -d "$pkgdir/etc/bash_completion.d"
  install -D -m 644 "$_builddir/scripts/bash_completion" "$pkgdir/etc/bash_completion.d/clicraft"
}

## vim:set ts=2 sw=2 et:
