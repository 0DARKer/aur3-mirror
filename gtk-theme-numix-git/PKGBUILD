# Maintainer: Diego <cdprincipe at gmail dot com>

pkgname=gtk-theme-numix-git
pkgver=98.ecdef7e
pkgrel=1
pkgdesc="A flat and light theme with a modern look"
arch=('any')
url="https://github.com/shimmerproject/Numix"
license=('GPL3')
depends=('gtk-engine-murrine')
makedepends=('git')
optdepends=()
provides=('gtk-theme-numix')
conflicts=('gtk-theme-numix')
source=('git://github.com/shimmerproject/Numix.git')
md5sums=('SKIP')

pkgver() {
  cd Numix
#  git describe --always | sed 's#-#_#g;s#v##'
echo $(git rev-list --count master).$(git rev-parse --short master)
}

package() {
  cd Numix

  # create theme dirs
  install -d -m 755 "$pkgdir"/usr/share/themes/Numix{,-compact/xfwm4}

  # clean up
  rm -rf {.git,.gitignore,LICENSE.{CC,GPL},README}

  # install theme
  cp -r . "$pkgdir"/usr/share/themes/Numix/

}

