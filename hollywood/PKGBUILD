# $Id$
# Maintainer: Zegoti
# Contributor: 

pkgname=hollywood
pkgver=1.6
pkgrel=1

pkgdesc="Hollywood technical melodrama hacker interface. Built on Byobu and a bunch of other amazing OpenSource software"
#"fill your console with Hollywood melodrama technobabble. This utility will split your console into a multiple panes of genuine technobabble, perfectly suitable for any Hollywood geek melodrama. It is particularly suitable on any number of computer consoles in the background of any excellent schlock technothriller."

arch=('any')

url="https://launchpad.net/hollywood"
license=('Apache' 'Custom:CC0-1.0')

depends=('apg' 'bmon' 'byobu' 'ccze' 'cmatrix' 'coreutils' 'gawk' 'htop' 'jp2a' 'mlocate' 'man-db' 'moreutils' 'mplayer' 'openssh' 'tree' 'speedometer' 'util-linux')

source=("${pkgname}-${pkgver}.tar.gz::${url}/trunk/${pkgver}/+download/${pkgname}_${pkgver}.orig.tar.gz"
		"http://ppa.launchpad.net/${pkgname}/ppa/ubuntu/pool/main/h/${pkgname}/${pkgname}_${pkgver}-0ubuntu1~vivid.debian.tar.xz"
		"license.txt::https://creativecommons.org/publicdomain/zero/1.0/legalcode.txt"
		)

md5sums=('707adef2cd1b65b0e69ceae8766cf753'
         '646516b4f93d20a5183315640a547725'
         '65d3616852dbf7b1a6d4b53b00626032')

package() {

# cp copyright and license
	install -D -m 0644 "$srcdir/debian/copyright" \
	"$pkgdir/usr/share/licenses/$pkgname/copyright"

	install -D -m 0644 "$srcdir/license.txt" \
	"$pkgdir/usr/share/licenses/$pkgname/license.txt"
	
# Install files
	install -D -m 0755 "$srcdir/$pkgname-$pkgver/bin/$pkgname" \
	"$pkgdir/usr/bin/$pkgname"
	
	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/apg" \
	"$pkgdir/usr/lib/$pkgname/apg"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/bmon" \
	"$pkgdir/usr/lib/$pkgname/bmon"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/cmatrix" \
	"$pkgdir/usr/lib/$pkgname/cmatrix"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/code" \
	"$pkgdir/usr/lib/$pkgname/code"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/errno" \
	"$pkgdir/usr/lib/$pkgname/errno"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/hexdump" \
	"$pkgdir/usr/lib/$pkgname/hexdump"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/htop" \
	"$pkgdir/usr/lib/$pkgname/htop"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/jp2a" \
	"$pkgdir/usr/lib/$pkgname/jp2a"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/logs" \
	"$pkgdir/usr/lib/$pkgname/logs"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/man" \
	"$pkgdir/usr/lib/$pkgname/man"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/mplayer" \
	"$pkgdir/usr/lib/$pkgname/mplayer"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/speedometer" \
	"$pkgdir/usr/lib/$pkgname/speedometer"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/sshart" \
	"$pkgdir/usr/lib/$pkgname/sshart"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/stat" \
	"$pkgdir/usr/lib/$pkgname/stat"

	install -D -m 0755 "$srcdir/$pkgname-$pkgver/lib/$pkgname/tree" \
	"$pkgdir/usr/lib/$pkgname/tree"

	install -D -m 0644 "$srcdir/$pkgname-$pkgver/share/$pkgname/mi.mp4" \
	"$pkgdir/usr/share/$pkgname/mi.mp4"
	
	install -D -m 0644 "$srcdir/$pkgname-$pkgver/share/man/man1/$pkgname.1" \
	"$pkgdir/usr/share/man/man1/$pkgname.1"
}

