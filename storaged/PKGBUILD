# Maintainer: Iwan Timmer <irtimmer@gmail.com>

pkgname=storaged
pkgver=0.2.0
pkgrel=1
pkgdesc="LVM DBus add-on for udisks"
url="https://github.com/cockpit-project/storaged"
license=('LGPL')
arch=('i686' 'x86_64')
depends=('udisks2' 'lvm2')
makedepends=()
source=(https://github.com/cockpit-project/${pkgname}/archive/${pkgver}.tar.gz)
md5sums=('1061d704efba91cd6c679ab8c1bb85d1')

build() {
  cd ${pkgname}-${pkgver}
  ./autogen.sh
  ./configure --prefix=/usr --sbindir=/usr/bin --sysconfdir=/etc
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="$pkgdir" install
}
