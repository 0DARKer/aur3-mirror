# Contributor: Eirik Haatveit <haatveit@gmail.com>
pkgname=linjap
pkgver=2.0.0.4
pkgrel=1
pkgdesc="Vocabulary study helper for students of Japanese using the GENKI book series."
arch=('i686' 'x86_64')
url="http://linjap.berlios.de/"
license=('GPL3')
depends=('boost' 'gtkmm')
source=(http://download.berlios.de/linjap/$pkgname-$pkgver.tar.gz)
md5sums=('917eb620b9b684f6aa0c8e2c1344fcf8')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
