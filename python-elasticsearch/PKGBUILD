pkgname=python-elasticsearch
pkgver=1.0.0
pkgrel=1
pkgdesc="Python client for Elasticsearch"
arch=('any')
url="https://github.com/elasticsearch/elasticsearch-py"
license=('APACHE')
groups=()
depends=('python' 'elasticsearch' 'python-urllib3')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(https://pypi.python.org/packages/source/e/elasticsearch/elasticsearch-1.0.0.tar.gz#md5=ac087d3f7a704b2c45079e7e25b56b9f)
md5sums=('ac087d3f7a704b2c45079e7e25b56b9f')

package() {
  cd "$srcdir/elasticsearch-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

