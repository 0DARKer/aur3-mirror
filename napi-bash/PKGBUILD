# Maintainer: 3ED <krzysztof1987@gmail.com>
pkgname=napi-bash
pkgver=0.32.0
pkgrel=1
pkgdesc="Lightweight, easy and fast polish subtitle downloader from the napi-project"
arch=('any')
url="https://github.com/3ed/napi-bash/wiki"
license=('GPL')
depends=('p7zip')
optdepends=('notification-daemon: dla wersji GUI/GTK')
source=("${pkgname}-${pkgver}.zip::https://github.com/3ed/${pkgname}/archive/v${pkgver}.tar.gz")
sha256sums=('0d8f551f8a69f0a160fc80bcd0cfd0a7b11401404c99dafe67f25bcd7d066085')

package() {
  cd "$pkgname-$pkgver"
  make install PREFIX="/usr" DESTDIR="$pkgdir"
}
