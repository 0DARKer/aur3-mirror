# Maintainer: 3ED <krzysztof1987@gmail.com>

pkgname=napi-bash
pkgver=0.43.rc2
pkgrel=1
pkgdesc="Lightweight, easy and fast polish subtitle downloader from the napi-project"
arch=('any')
url="http://3ed.github.io/napi-bash/"
license=('GPL')
depends=('p7zip')
optdepends=('notification-daemon: dla wersji GUI/GTK'
            'subotage: detekcja i konwertowanie formatów'
            'ffmpeg: detekcja fps gdy ta wbudowana w subotage zawiedzie'
            'mediainfo: można zastąpić ffmpeg'
            'mplayer: można zastąpić ffmpeg')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/3ed/${pkgname}/archive/v${pkgver}.tar.gz")
sha256sums=('de49e0c70241b6ebe6bdb25a41f149847ade14c8f7d42de5e7c871854de21b51')

package() {
  cd "$pkgname-$pkgver"
  make install PREFIX="/usr" DESTDIR="$pkgdir"
}
