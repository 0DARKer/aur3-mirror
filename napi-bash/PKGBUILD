# Maintainer: 3ED <krzysztof1987@gmail.com>
pkgname=napi-bash
pkgver=0.20.1
pkgrel=1
pkgdesc="Lightweight, easy and fast polish subtitle downloader from the napi-project"
arch=('any')
url="http://csk.pl/~kas/?n=Skrypty.Gnapi-bash"
license=('GPL')
depends=('p7zip')
optdepends=(
  'notification-daemon: dla wersji GUI/GTK'
  'zenity: dla okien wyboru plikow'
  )
source=("http://csk.pl/~kas/dl/$pkgname/$pkgname-$pkgver.tar.bz2")
sha256sums=('a2fa640c3cb56378e37985c0c2a863c2218ab828081e160c67f9d508a5f611fc')

build() {
	install -Dm755 "$srcdir/$pkgname-$pkgver/$pkgname.sh" \
		"$pkgdir/usr/bin/$pkgname" || return 1
}
