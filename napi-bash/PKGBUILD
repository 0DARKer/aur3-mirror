# Maintainer: 3ED <krzysztof1987@gmail.com>
pkgname=napi-bash
pkgver=0.30.0rc3
pkgrel=2
pkgdesc="Lightweight, easy and fast polish subtitle downloader from the napi-project"
arch=('any')
url="http://code.google.com/p/napi-bash/"
license=('GPL')
depends=('p7zip')
optdepends=('notification-daemon: dla wersji GUI/GTK')
source=("http://napi-bash.googlecode.com/files/napi-bash-0.30.0rc3.tar.xz")
sha256sums=('0a39f80407e9fc3901a4f08ab98fcf6639b67239f984e4d195f12478104f246e')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make install PREFIX="/usr" DESTDIR="$pkgdir"
}
