# Contributor: Andrea Scarpino <andrea@archlinux.org>
# Contributor: Kiril Vladimiroff <kiril@vladimiroff.org>

pkgname=ttf-oxygen-git
pkgver=140.a25fc69
pkgrel=1
pkgdesc='A desktop/gui font family for integrated use with the KDE desktop.'
arch=('any')
license=('Open Font License, Version 1.1')
url="https://projects.kde.org/projects/playground/artwork/oxygen-fonts"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
makedepends=('git')
provides=('ttf-oxygen')
conflicts=('ttf-oxygen')
install=ttf-oxygen.install
source=(oxygen-fonts::git://anongit.kde.org/oxygen-fonts.git)
md5sums=('SKIP')

pkgver() {
    cd oxygen-fonts
    echo $(git rev-list --count master).$(git rev-parse --short master)
}

package() {
    cd oxygen-fonts

    git checkout in-progress

	install -d "${pkgdir}"/usr/share/fonts/TTF/
	install -m644 {Bold,Mono,Regular,SP_Instances}/*.ttf \
      "${pkgdir}"/usr/share/fonts/TTF/
	install -m644 {Bold,Extra-Light,Regular}/src/*.ttf \
      "${pkgdir}"/usr/share/fonts/TTF/
}
