# Maintainer: Paolo Stivanin <admin AT polslinux DOT it>

pkgname=ttf-oxygen-git
pkgver=20120802
pkgrel=2
pkgdesc='A desktop/gui font family for integrated use with the KDE desktop.'
arch=('any')
install=ttf-oxygen.install
source=(ttf-oxygen.install)
license=('Open Font License, Version 1.1')
url="https://projects.kde.org/projects/playground/artwork/oxygen-fonts"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
makedepends=('git')
md5sums=('3a6a8ac68cf61a9337ea105d296b5c6a')

_gitname="oxygen-fonts"
_gitroot="git://anongit.kde.org/${_gitname}"

build() {
	cd $srcdir
	
	if [ -d $_gitname ]; then
		cd $_gitname && git pull origin
	else
		git clone $_gitroot $_gitname
	fi

	install -d $pkgdir/usr/share/fonts/TTF/
	install -m644 $srcdir/$_gitname/in-progress/Monospace/*.ttf $pkgdir/usr/share/fonts/TTF/
	install -m644 $srcdir/$_gitname/in-progress/Oxygen-Bold/*.ttf $pkgdir/usr/share/fonts/TTF/
	install -m644 $srcdir/$_gitname/in-progress/Oxygen-Italic/*.ttf $pkgdir/usr/share/fonts/TTF/
	install -m644 $srcdir/$_gitname/in-progress/Oxygen-Regular/*.ttf $pkgdir/usr/share/fonts/TTF/	
}
