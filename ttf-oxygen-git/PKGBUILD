# Maintainer: Stephane Peralta <stef312@gmail.com>

pkgname=ttf-oxygen-git
pkgver=20120117
pkgrel=1
pkgdesc='A desktop/gui font family for integrated use with the KDE desktop.'
arch=('any')
install=
source=()
license=('Open Font License, Version 1.1')
url="https://projects.kde.org/projects/playground/artwork/oxygen-fonts"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
makedepends=('git')

_gitname="oxygen-fonts"
_gitroot="git://anongit.kde.org/${_gitname}"

build() {
	cd $srcdir
	
	if [ -d $_gitname ]; then
		cd $_gitname && git pull origin
	else
		git clone $_gitroot $_gitname
	fi

	install -d $pkgdir/usr/share/fonts/TTF/
	install -m644 $srcdir/$_gitname/Monospace/*.ttf $pkgdir/usr/share/fonts/TTF/
	install -m644 $srcdir/$_gitname/Oxygen-Bold//*.ttf $pkgdir/usr/share/fonts/TTF/
	install -m644 $srcdir/$_gitname/Oxygen-Regular/*.ttf $pkgdir/usr/share/fonts/TTF/	
}
