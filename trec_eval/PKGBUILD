# Contributor: Chris Baker <baker.chris.3@gmail.com>

pkgname=trec_eval
pkgver=9.0
pkgrel=1
pkgdesc="Tool used by the TREC community for evaluating an ad hoc retrieval run"
arch=('i686' 'x86_64')
url="http://trec.nist.gov/"
license=('custom')
source=('http://trec.nist.gov/trec_eval/trec_eval_latest.tar.gz' 
        'LICENSE')
md5sums=('74841331cf1fc099a06dfdfa485fcc87'
         'db4d020ddb3ec6be25208523d16740c9')

build() {
  mkdir -p $pkgdir/usr/bin || return 1
  mkdir -p $pkgdir/usr/share/licenses/trec_eval || return 1
  cd $srcdir/$pkgname.$pkgver
  make || return 1
  install -m755 $pkgname $pkgdir/usr/bin || return 1
  install -m644 $srcdir/LICENSE $pkgdir/usr/share/licenses/trec_eval || return 1
}

