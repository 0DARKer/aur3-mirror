# Contributor: watsonalgas <watsonalgas@gmail.com>
pkgname=cronometer
pkgver=0.9.8
pkgrel=1
pkgdesc="fully featured nutrition and biomarker tracking tool"
arch=('i686' 'x86_64')
url="http://spaz.ca/cronometer/"
license=('CPL')
depends=("java-runtime")
source=("http://downloads.sourceforge.net/project/cronometer/cronometer/${pkgver}/CRONoMeter-${pkgver}-MacOSX.zip"
        "cronometer.sh")

build() {
	install -d $pkgdir/usr/lib/$pkgname
    # it's actually the Mac OS X version, so we un-mac-ify it
    cp -r $srcdir/CRONoMeter.app/Contents/Resources/Java/* $pkgdir/usr/lib/$pkgname/ || return 1
    
    install -D -m755 $srcdir/cronometer.sh $pkgdir/usr/bin/cronometer || return 1
}

md5sums=('eb80f56b62049a16241f2f164e05ef3b'
         'e737eaf5ba5644564394abfccaacdd21')                                      
