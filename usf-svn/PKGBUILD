#This software is still under developpement, but should work almost properly
pkgname=usf-svn
pkgrel=2
pkgver=336
pkgdesc="UltimateSmashFriends is a game based on pygame, which aim at creating quick and fun multiplayer entertainment. "
arch='any'
url="http://code.google.com/p/ultimate-smash-friends/"
license=('GPL')
conflicts=('usf')
provides=('usf-svn')
makedepends='subversion'
depends=('python' 'python-pygame') 
_svnmod="ultimate-smash-friends-read-only"
_svntrunk="http://ultimate-smash-friends.googlecode.com/svn/trunk/"
build() {
  	cd ${srcdir}/
    msg "Connecting to server...."
    svn co $_svntrunk $_svnmod
    msg "SVN checkout done or server timeout"
    svn export ./${_svnmod} ./usf
    cd ./usf/trunk 
	mkdir -p ${pkgdir}/usr/share/apps/usf
	cp -R ./* ${pkgdir}/usr/share/apps/usf/
	mkdir -p ${pkgdir}/usr/bin/
    echo -e '#!/bin/bash\ncd /usr/share/apps/usf/\npython ultimate-smash-friends' > ${pkgdir}/usr/bin/usf
    chmod a+x ${pkgdir}/usr/bin/usf
}
