# Maintainer: speps <speps dot aur dot archlinux dot org>

_rtkver=0.1.1
pkgname=lv2-tuna
pkgver=0.2
pkgrel=1
pkgdesc="An musical instrument tuner with strobe characteristics in LV2 plugin format."
arch=('i686' 'x86_64')
url="https://github.com/x42/tuna.lv2"
license=('GPL')
groups=('lv2-plugins')
depends=('gtk2' 'fftw' 'lv2')
makedepends=('mesa')
provides=('tuna.lv2')
conflicts=('tuna.lv2')
source=("$url/archive/v$pkgver.tar.gz"
        "https://github.com/x42/robtk/archive/v$_rtkver.tar.gz")
md5sums=('7e2b05bee4f074aab5c5c0c21dcef22f'
         '23819d40ab12624fb0e63b32ef733ada')

prepare() {
  export RW=../robtk-$_rtkver/
}

build() {
  cd tuna.lv2-$pkgver
  make
}

package() {
  cd tuna.lv2-$pkgver
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}
