# Maintainer: speps <speps dot aur dot archlinux dot org>

_rtkver=0.2.0
pkgname=lv2-tuna
pkgver=0.3
pkgrel=1
pkgdesc="An musical instrument tuner with strobe characteristics in LV2 plugin format."
arch=('i686' 'x86_64')
url="https://github.com/x42/tuna.lv2"
license=('GPL')
groups=('lv2-plugins')
depends=('gtk2' 'fftw' 'lv2')
makedepends=('mesa')
provides=('tuna.lv2')
conflicts=('tuna.lv2')
source=("$url/archive/v$pkgver.tar.gz"
        "https://github.com/x42/robtk/archive/v$_rtkver.tar.gz")
md5sums=('fecd4d97c226ecec683da792d8994eb1'
         '32c6dc7f97280dbb8af2e9f8545937ea')

prepare() {
  export RW=../robtk-$_rtkver/
}

build() {
  cd tuna.lv2-$pkgver
  make
}

package() {
  cd tuna.lv2-$pkgver
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}
