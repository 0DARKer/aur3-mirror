pkgname=musicd
pkgver=0.1.0
pkgrel=0
pkgdesc="A music indexing and streaming server."
arch=('i686' 'x86_64')
url="http://tsundere.fi/musicd/"
license=('GPL')
makedepends=()
depends=('ffmpeg' 'sqlite3')
source=("https://github.com/Kray/musicd/tarball/v$pkgver")
md5sums=('9101ceb0f1293d776676e102018bd5ed')

build() {
	cd `find $srcdir -type d -iname 'Kray-musicd-*'` #This is... ugly
	make PREFIX=${pkgdir} install
}
