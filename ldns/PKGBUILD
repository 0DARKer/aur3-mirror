# base on sega01's PKGBUILD from Icadyptes linux
# Contributor: jiribb <jiribb@gmail.com> and <mathieui> <mathieui@mathieui.net>
# Maintainer: mathieui <mathieui@mathieui.net>

pkgname=ldns
pkgver=1.6.5
pkgrel=1
pkgdesc="ldns DNS library with Drill util (ala Bind's dig)"
arch=('i686' 'x86_64')
url="http://www.nlnetlabs.nl/projects/ldns/"
license=('GPL')
groups=(network)
depends=("openssl" "glibc")
#options=(!libtool)
source=(http://www.nlnetlabs.nl/downloads/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('ab41a641a0416908e03e63631f527c4a')



build() {
  cd $startdir/src/$pkgname-$pkgver

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
  --enable-sha2 --disable-rpath
  make || return 1
  make DESTDIR="$pkgdir/" install

  # Install Drill
  cd drill

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
  --with-ldns=$pkgdir --disable-rpath
  make || return 1
  make DESTDIR="$pkgdir/" install
}
# vim:set ts=2 sw=2 et:
