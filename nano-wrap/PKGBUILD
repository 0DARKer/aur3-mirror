# Contributor: Brian Parsons <brian@pmex.com>
pkgname=nano-wrap
_realname=nano
pkgver=2.0.9
pkgrel=1
pkgdesc="Pico editor clone with enhancements. Includes wrapping functionality disabled in Arch repos"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.nano-editor.org"
groups=('base')
depends=('glibc' 'ncurses' 'texinfo')
provides=("$_realname=$pkgver")
conflicts=("$_realname")
source=(http://www.nano-editor.org/dist/v2.0/nano-${pkgver}.tar.gz)
backup=(etc/nanorc)
md5sums=('2be94dc43fb60fff4626a2401a977220')
install=nano.install

build() {
  cd ${srcdir}/${_realname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --enable-color --enable-nanorc --enable-multibuffer
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  install -DTm644 ${srcdir}/${realname}-${pkgver}/doc/nanorc.sample ${pkgdir}/etc/nanorc

  rm -f ${pkgdir}/usr/share/info/dir
}

