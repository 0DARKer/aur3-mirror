# vim:set ts=2 sw=2 et ft=sh tw=100: expandtab
# Maintainer: Piotr Rogo≈ºa <rogoza dot piotr at gmail dot com>

pkgname=vim-misc-xolox
pkgver=1.0
pkgrel=1
_src_id=20203
pkgdesc='Miscellaneous auto-load Vim scripts'
arch=('any')
url='http://peterodding.com/code/vim/misc'
license=('MIT')
conflict=(vim-misc-xolox-git)
source=("${pkgname}-${pkgver}.zip::http://www.vim.org/scripts/download_script.php?src_id=$_src_id")

package(){
  cd "$srcdir"
  _vim_dir='/usr/share/vim/vimfiles'
  install -dm755 "$pkgdir"/$_vim_dir
  cp -r {autoload,doc} "$pkgdir"/$_vim_dir
#  rm -fv "$pkgdir"/$_vim_dir/README.md
}
md5sums=('be777688a97257501791b6b0c8809140')
