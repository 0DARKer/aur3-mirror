# Contributor: Hubert Siejkowski <hubert.siejkowski@gmail.com>

pkgname=python-asciitable
pkgver=0.5.1
pkgrel=1
pkgdesc="An extensible ASCII table reader and writer"
arch=(any)
url="http://cxc.harvard.edu/contrib/asciitable/"
license=('BSD')
depends=('python>=2.4')
source=(http://cxc.harvard.edu/contrib/asciitable/downloads/asciitable-${pkgver}.tar.gz)
md5sums=('3d6e3840a7ce13cf3f09660b6282e662')

build() {
  cd $srcdir/asciitable-$pkgver
  python setup.py install --root=$pkgdir/ --optimize=1
}
