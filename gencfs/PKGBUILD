# Contributor: Andre Klitzing <andre () incubo () de>
pkgname=gencfs
pkgver=1.0.2
pkgrel=1
pkgdesc="EncFS GUI for encrypted directory mounting"
arch=('i686' 'x86_64')
url="http://sallu.tuxfamily.org"
license=('GPL')
depends=()
makedepends=()
source=(http://download.tuxfamily.org/sallu/utilities/$pkgname-$pkgver.tar.bz2)
md5sums=('f938c49dec762dd658db7c2dd2f4b12a')

build() {
  mkdir "$srcdir/build"
  cd "$srcdir/build"

  cmake -D CMAKE_INSTALL_PREFIX=/usr "../$pkgname-$pkgver" || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
