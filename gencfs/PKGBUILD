# Contributor: Andre Klitzing <andre () incubo () de>
pkgname=gencfs
pkgver=1.0.4
pkgrel=2
pkgdesc="EncFS GUI for encrypted directory mounting"
arch=('i686' 'x86_64')
url="http://sallu.tuxfamily.org"
license=('GPL')
depends=(encfs gtk2)
makedepends=()
source=(http://download.tuxfamily.org/sallu/utilities/$pkgname-$pkgver.tar.bz2)
md5sums=('57d23727077ab93b9fdc387a4e2dfd08')

build() {
  mkdir "$srcdir/build"
  cd "$srcdir/build"

  cmake -D CMAKE_INSTALL_PREFIX=/usr "../$pkgname-$pkgver"
  make
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
