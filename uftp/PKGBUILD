# Maintainer: Markus Jochim <ich@markusjochim.de>
pkgname=uftp
pkgver=2.10.3
pkgrel=1
pkgdesc="Multicast FTP software"
arch=(i686 x86_64)
url="http://www.tcnj.edu/~bush/uftp.html"
license=('GPL')
source=(http://www.tcnj.edu/~bush/uftp-2.10.3.tar)
md5sums=('93f35bda2412194897d9dcf2b9c46c53')

build() {
	cd "$srcdir"

	make || return 1

	install -d "$pkgdir/bin" "$pkgdir/usr/sbin" "$pkgdir/usr/share/man/man1"
	install -m755 uftp "$pkgdir/bin"
	install -m755 uftpd "$pkgdir/usr/sbin"
	install -m 644 uftp.1 uftpd.1 "$pkgdir/usr/share/man/man1"
}

