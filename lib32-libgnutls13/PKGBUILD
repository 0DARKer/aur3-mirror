# $Id$
# Maintainer: webjdm <web.jdm@gmail.com>

pkgname=lib32-libgnutls13
pkgver=2.0.4
pkgrel=1
pkgdesc="Old gnutls with libgnutls.so.13 library"
arch=('x86_64')
license=('GPL3' 'LGPL')
url="http://www.gnu.org/software/gnutls/"
depends=('lib32-gcc-libs' 'lib32-libtasn1' 'lib32-readline' 'lib32-zlib' 'lib32-libgcrypt')
makedepends=('rpmextract')
source=(http://webjdm.free.fr/archlinux/${pkgname}/gnutls-${pkgver}-3.fc9.i386.rpm)
md5sums=('c87bed3d7dcf146b227d0d17bbe0471b')

build() {
  cd ${startdir}/src

  rpmextract.sh gnutls-${pkgver}-3.fc9.i386.rpm || return 1

  cd ${startdir}/pkg

  mkdir -p opt/lib32/usr
  mv ${startdir}/src/usr/lib opt/lib32/usr
}
