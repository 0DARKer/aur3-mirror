# Contributor: Petteri Tolonen <petteri.tolonen@gmail.com>
pkgname=libcrystalhd-git
pkgver=20100204
pkgrel=1
pkgdesc="Broadcom Crystal HD library from git.wilsonet.com"
arch=('i686' 'x86_64')
url="http://git.wilsonet.com/crystalhd.git/"
license=('GPL2')
depends=('gcc-libs')
makedepends=('git' 'make')
conflicts=('libcrystalhd')

_gitroot='git://git.wilsonet.com/crystalhd.git'
_gitname='crystalhd'

build() {

    cd $startdir/src

    msg "Connecting to git.wilsonet.com GIT server...."

    if [ -d $startdir/src/$_gitname ] ; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot
        cd $_gitname
    fi

    cd linux_lib/libcrystalhd

    make || return 1
    make install DESTDIR=$pkgdir || return 1

}
