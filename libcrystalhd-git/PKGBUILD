# Contributor: Petteri Tolonen <petteri dot tolonen at gmail dot com>

pkgname=libcrystalhd-git
pkgver=20121121
pkgrel=1
pkgdesc="Broadcom CrystalHD library"
arch=('i686' 'x86_64')
url="http://git.linuxtv.org/jarod/crystalhd.git"
license=('GPL2')
depends=('gcc-libs')
makedepends=('git' 'make')
conflicts=('libcrystalhd')

_gitroot='git://linuxtv.org/jarod/crystalhd.git'
_gitname='crystalhd'

build() {

    cd $startdir/src

    msg "Connecting to the GIT server...."

    if [ -d $startdir/src/$_gitname ] ; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot
        cd $_gitname
    fi

    cd linux_lib/libcrystalhd

    make || return 1
    make install DESTDIR=$pkgdir || return 1

}
