pkgname=libcrystalhd-git
pkgver=20130403
pkgrel=1
pkgdesc="Broadcom CrystalHD library"
arch=('i686' 'x86_64')
url="http://git.linuxtv.org/jarod/crystalhd.git"
license=('GPL2')
depends=('gcc-libs')
makedepends=('git' 'make' 'wget')
conflicts=('libcrystalhd')

_gitroot='git://linuxtv.org/jarod/crystalhd.git'
_gitname='crystalhd'

build() {

    cd $startdir/src

    msg "Connecting to the GIT server...."

    if [ -d $startdir/src/$_gitname ] ; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot
        cd $_gitname
    fi

    wget "https://raw.github.com/OpenELEC/OpenELEC.tv/master/packages/multimedia/crystalhd/patches/crystalhd-3cb6786-crosscompiling-0.1.patch"
    wget "https://raw.github.com/OpenELEC/OpenELEC.tv/master/packages/multimedia/crystalhd/patches/crystalhd-3cb6786-fix_typo.patch"
    wget "https://raw.github.com/OpenELEC/OpenELEC.tv/master/packages/multimedia/crystalhd/patches/crystalhd-3cb6786-lower_THRESHOLD_globals.patch"
    wget "https://raw.github.com/OpenELEC/OpenELEC.tv/master/packages/multimedia/crystalhd/patches/crystalhd-3cb6786-use_8_DMA_buffers.patch"
    for p in *.patch
    do
      patch -p1 < "$p"
    done

    cd linux_lib/libcrystalhd

    make || return 1
    make install DESTDIR=$pkgdir || return 1

}

