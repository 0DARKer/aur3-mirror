# Contributor: MeMi69  MetalMilitia at gmx dot net

pkgname=kcollectd
pkgver=0.4
pkgrel=1
pkgdesc="Kcollectd is a small applications that allows to view rrd datacollections that have been created by collectd."
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/kcollectd?content=86554"
license=('LGPL')
groups=()
depends=('kdelibs' 'collectd' 'kdebase-workspace')
makedepends=('gcc' 'cmake' 'automoc4')
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(http://kde-apps.org/CONTENT/content-files/86554-$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('28116f778696feaf85fd090ea352bb9b')
build() {
  cd $srcdir/$pkgname-$pkgver
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` .. || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
