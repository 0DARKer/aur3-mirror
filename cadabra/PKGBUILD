# Contributor: Dariusz 'quasi' Panchyrz <quasi@aur.archlinux.org>

pkgname=cadabra
pkgver=1.26
pkgrel=1
pkgdesc="Cadabra is a computer algebra system (CAS)"
arch=('i686' 'x86_64')
url="http://cadabra.phi-sci.com/"
license=('GPL')
depends=('conlie' 'modglue>=1.16' 'breqn')
install=$pkgname.install
source=(http://cadabra.phi-sci.com/$pkgname-$pkgver.tar.gz cadabra.patch)
md5sums=('879c85c883ae822f05866cc2cfb0b344' '5c5166c385b16335daa867241ee86f69')

build() {

  cd $startdir/src/$pkgname-$pkgver/src/
  patch -p1 -i $startdir/cadabra.patch

  cd $startdir/src/$pkgname-$pkgver/
  ./configure --prefix=$startdir/pkg/usr/
  make || return 1
  make install || return 1


}
