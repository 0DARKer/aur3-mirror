# Contributor: Rickey Visinski <rickeyvisinski@gmail.com>
pkgname=arachni-git
pkgver=20110109
pkgrel=1
pkgdesc="Arachni - Web Application Security Scanner Framework"
arch=('i686' 'x86_64')
url="https://github.com/Zapotek/arachni"
license=('GPL')
depends=('ruby' 'ruby-typhoeus' 'ruby-awesome_print' 'ruby-yard' 'ruby-nokogiri' 'ruby-robots' 'ruby-liquid')
makedepends=('git')
source=()
md5sums=()

_gitroot="git://github.com/Zapotek/arachni.git"
_gitname="arachni"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  mkdir -p $pkgdir/usr/{bin,src}
  cd $pkgdir/usr/src
  cp -R $srcdir/$_gitname $_gitname
  cd $pkgdir/usr/bin
  echo '#!/bin/sh' > arachni
  echo 'ruby /usr/src/arachni/bin/arachni $*' >> arachni
  chmod +x $pkgdir/usr/bin/$_gitname
} 
