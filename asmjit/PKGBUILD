pkgname=asmjit
pkgver=1.0beta4
pkgrel=1
pkgdesc="Complete x86/x64 JIT Assembler for C++ Language."
arch=('i686' 'x86_64')
url="http://code.google.com/p/asmjit/"
license=('BSD')
depends=('gcc-libs')
makedepends=('cmake' 'gcc')
source=("http://asmjit.googlecode.com/files/AsmJit-1.0-beta4.zip")
md5sums=('4be6444a4aad96e14b3ea04866632fa8')

build () {
  cd "$srcdir/AsmJit-1.0-beta4"
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DASMJIT_BUILD_LIBRARY=1 .
  make
}

package () {
  cd "$srcdir/AsmJit-1.0-beta4"
  make install DESTDIR="$pkgdir"
}
