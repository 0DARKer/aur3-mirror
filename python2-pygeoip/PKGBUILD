pkgname=python2-pygeoip
_pypiname=pygeoip
pkgver=0.3.0
pkgrel=1
pkgdesc="Pure Python GeoIP API"
arch=('any')
url='http://pypi.python.org/pypi/pygeoip'
license=('LGPL')
depends=('python2')
makedepends=('python2-setuptools')
optdepends=('geoip-database: provides a database for geoip lookups')
source=("http://pypi.python.org/packages/source/p/${_pypiname}/${_pypiname}-${pkgver}.tar.gz")

package() {
  cd $_pypiname-$pkgver
  python2 setup.py install --root="$pkgdir" --optimize=1
}

sha512sums=('62ba89ed276d3bcb918ba127dc205a4745e31419000e6a5efb7d8a211550f14cd4b124973139a2e018df628d0831ba068a77e7425f80bc2133476f525eee7fbc')
