pkgname=python2-pygeoip
_pypiname=pygeoip
pkgver=0.2.6
pkgrel=1
pkgdesc="Pure Python GeoIP API"
arch=('any')
url='http://pypi.python.org/pypi/pygeoip'
license=('LGPL')
depends=('python2')
makedepends=('python2-distribute')
optdepends=('geoip-database: provides a database for geoip lookups')
source=("http://pypi.python.org/packages/source/p/${_pypiname}/${_pypiname}-${pkgver}.zip")
md5sums=('b3ac1bfcd535782bc59af78e722cf5c1')

package() {
  cd "$srcdir/$_pypiname-$pkgver"
  python2 setup.py install --root="$pkgdir" --optimize=1
}
