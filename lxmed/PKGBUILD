# Maintainer: kfgz <kfgz at interia dot pl>

pkgname=lxmed
pkgver=20110426
pkgrel=1
pkgdesc="Menu editor for LXDE"
url="http://sourceforge.net/projects/lxmed/"
license="custom"
depends=('gksu' 'j2re')
source=(http://prdownloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
arch=('any')
md5sums=('c4aa27b9d62b21c36bd6dd79976a68f4')
		 
package() {
  cd ${srcdir}/${pkgname}/content
  install -D -m644 LXMenuEditor.jar ${pkgdir}/opt/${pkgname}/LXMenuEditor.jar
  install -D -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -D -m644 ${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
  install -D -m644 ${pkgname}.png ${pkgdir}/usr/share/pixmaps/${pkgname}.png
  install -D -m644 ${srcdir}/${pkgname}/LICENCE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt
}
