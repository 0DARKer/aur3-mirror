# Contributor: Jonathan Frazier <eyeswide@gmail.com>
pkgname=avalon
pkgver=0.2
pkgrel=1
pkgdesc="A pysqlite script to search the archlinux repo filelists"
arch=("i686" "x86_64")
url="http://none.none"
license=('GPL')
depends=('python>=2.6' 'python-pysqlite' 'wget')
makedepends=()
backup=()
source=(avalon.py)
noextract=(avalon.py)

build() {
  cd "$srcdir"
  install -D -m755 avalon.py ${pkgdir}/usr/bin/avalon.py
  install -d --group=wheel -m 775 ${pkgdir}/var/lib/avalon
}

# vim:set ts=2 sw=2 et:
md5sums=('e6f4c2c1a2fb558436e2b960a12b1191')
