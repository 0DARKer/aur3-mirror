# Contributor: Rorschach <r0rschach@lavabit.com>

pkgname=jondo
pkgver=00.13.006
pkgrel=1
pkgdesc='The JonDonym anonymous proxy servers technology is based on the principle of multiple (layered) encryption, distribution and processing (Mixing). This unique procedure does not only protect your internet activities from being observed by third parties: also the individual JonDonym anonymous proxy providers (Mix operators) cannot follow your steps. Each internet/web access is individually anonymised.'
arch=('i686' 'x86_64')
license=('BSD')
url="http://www.jondos.de"
depends=('java-runtime')
conflicts=('jondo-beta','jap')
provides=('jondo-beta','jap')
source=(http://anonymous-proxy-servers.net/downloads/JAP.jar \
	jondo \
	jondo.xpm \
	jondo.desktop \
	jondo.1)
noextract=($(for i in ${source[@]}; do basename $i; done))
md5sums=('2ab1c828ccd2fecaa02e23a98bf12c95'
         '431ef1962506b40f496c370c41e0d455'
         'bb3d54578e906e87e9c4c126973ac201'
         '8833930f5423c952a5a17dffec6997b0'
         '800a3b48b51c2de736c5f19980390f68')

build() {
  cd $srcdir
  install -Dm755 jondo $pkgdir/usr/bin/$pkgname || return 1
  install -Dm644 jondo.xpm $pkgdir/usr/share/pixmaps/jondo.xpm
  install -Dm644 jondo.desktop $pkgdir/usr/share/applications/jondo.desktop 
  install -Dm644 JAP.jar $pkgdir/usr/share/java/jondo/JAP.jar
  install -Dm644 jondo.1 $pkgdir/usr/share/man/man1/jondo.1
}
