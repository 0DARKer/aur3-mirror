# Maintainer: crazyelf5

pkgname=orta-gtk3-theme
pkgver=0.0.1
pkgrel=1
pkgdesc="A GTK 3 port of the popular Orta theme (includes GTK 2 theme)"
arch=('any')
url="http://rebek94.deviantart.com/art/Orta-theme-for-Ubuntu-Unity-11-10-283027728"
license=('GPL')
depends=('gtk-engine-unico')
optdepends=('gtk-engine-murrine: For GTK 2 apps'
            'orta-openbox-theme: An Openbox theme [AUR]')
conflicts=('orta-gtk-theme')
source=(http://www.deviantart.com/download/283027728/orta_theme_for_ubuntu_unity_11_10_by_rebek94-d4oi9lc.zip)
md5sums=('5d75aa5d4dcb4d873af310f73f8bb6e7')

package() {
  install -dm755 "$pkgdir/usr/share/themes/Orta"
  bsdtar -xf $(basename ${source}) -C "$pkgdir/usr/share/themes/Orta"

  find "$pkgdir/" -type f -exec chmod 644 '{}' \;
  find "$pkgdir/" -type d -exec chmod 755 '{}' \;
}
