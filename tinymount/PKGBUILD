# Maintainer: Sergey Malkin <adresatt@gmail.com>
pkgname=tinymount
pkgver=0.2.0
pkgrel=1
pkgdesc="Simple GUI tool for disks mounting written in c++/Qt"
arch=('x86_64' 'i686')
url="https://github.com/limansky/tinymount"
license=('GPL')
depends=('qt')
source=(https://github.com/downloads/limansky/tinymount/${pkgname}-${pkgver}.tar.gz)
md5sums=('f4efb6600749d54f20e766aed08cea47')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/"
  qmake PREFIX=/usr ${pkgname}.pro
  make || return 1
  make INSTALL_ROOT=${pkgdir} install || return 1
}