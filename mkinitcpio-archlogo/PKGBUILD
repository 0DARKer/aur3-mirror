# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=mkinitcpio-archlogo
pkgver=0.1.1
pkgrel=1
pkgdesc="Add colored Arch Linux ASCII art logo to early boot process"
arch=('any')
url="http://www.eworm.de/"
license=('GPL')
install=mkinitcpio-archlogo.install
source=('archlogo.conf'
	'archlogo_hook'
	'archlogo_install'
	'archlogo'
	'archlogo2')
backup=('etc/archlogo.conf')
    
package() {
	# install hook and install script
	install -D -m0644 ${srcdir}/archlogo_hook ${pkgdir}/usr/lib/initcpio/hooks/archlogo
	install -D -m0644 ${srcdir}/archlogo_install ${pkgdir}/usr/lib/initcpio/install/archlogo

	# install config
	install -D -m0644 ${srcdir}/archlogo.conf ${pkgdir}/etc/archlogo.conf

	# install logos
	install -D -m0644 ${srcdir}/archlogo ${pkgdir}/usr/share/archlogo/archlogo
	install -D -m0644 ${srcdir}/archlogo2 ${pkgdir}/usr/share/archlogo/archlogo2
}

sha256sums=('a4503dc959405e78929bb90027f1854cb5a3fc1018224383db721b4f39a67946'
            '7c4d28c4d1255f3db1e3c7afa7a01fef1d8f4b3a109b0a9fcfdfa52e8dd78e7c'
            '68d9dc699aa2e1bd2b82cfe255df2f96fbcc5f750700ad422237fe3031a27201'
            '3f4dd0d381a7f152d7af4a0293da94a241fef47da1cdba88712014b72abcf5d3'
            '98a4756215fa63baef06105d61ea155bcaaf9e58402e6b323f5d4e36b52b484a')
