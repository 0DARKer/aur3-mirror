pkgname=git-extras
pkgver=0.0.7
_pkgtag=26c4da6
pkgrel=1
pkgdesc="GIT utilities -- repo summary, commit counting, repl, changelog population and more"
arch=(any)
url="http://github.com/visionmedia/git-extras"
license=('unknown')
depends=('git' 'bash')
source=(https://github.com/visionmedia/${pkgname}/tarball/${pkgver})
md5sums=('e10bdaf393c3bf77840550055a06285f')
sha1sums=('4f290aab1fed343971fa27adc780390d5cf39bef')

build() {
  msg "Nothing to build :)"
}

package() {
  cd "$srcdir/visionmedia-$pkgname-$_pkgtag"

  install -dm 755 "$pkgdir/usr/bin"
  make PREFIX="$pkgdir/usr" install
}

