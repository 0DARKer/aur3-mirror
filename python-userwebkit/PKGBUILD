pkgname=python-userwebkit
_pkgname=userwebkit
pkgver=11.09.1
pkgrel=1
pkgdesc="A library that allows WebKitGtk apps to talk to a local per-user CouchDB"
arch=('any')
url="http://www.kickstarter.com/projects/novacut/novacut-pro-video-editor"
license=('LGPL3')
depends=('python' 'python-microfiber' 'python-gobject' 'libwebkit3')
source=("https://launchpad.net/$_pkgname/trunk/11.09/+download/$_pkgname-$pkgver.tar.gz")
md5sums=('c4fb11833342bd2b7bbbe1365543b63b')

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir" -O1
}
