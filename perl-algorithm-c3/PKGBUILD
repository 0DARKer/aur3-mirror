# CPAN Name  : Algorithm-C3
# Contributor: Anonymous

pkgname='perl-algorithm-c3'
pkgver='0.08'
pkgrel='3'
pkgdesc="A module for merging hierarchies using the C3 algorithm"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Algorithm-C3'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/Algorithm-C3-0.08.tar.gz')
md5sums=('07afb08682125c875b80c315d99f6f95')
sha512sums=('feaf8b49ff9382eb0415536a1b384b690b33956705ebc3889c0f27dbae77eaec8e0179c1d103ed2ec53158de26c7e33ac7e6dfc920c64415f16baa360ab7b9b2')

build() {
  cd "$srcdir/Algorithm-C3-0.08"
  PERL_MM_USE_DEFAULT=1
  INSTALLDIRS=vendor  
  perl Build.PL --installdirs vendor
  perl Build  --installdirs vendor
}

check() {
  cd "$srcdir/Algorithm-C3-0.08"
  PERL_MM_USE_DEFAULT=1
  perl Build test
}

package() {
  cd "$srcdir/Algorithm-C3-0.08"
  perl Build install --destdir "$pkgdir"
  find "$pkgdir" -name '.packlist' -o -name 'perllocal.pod' -delete
}
