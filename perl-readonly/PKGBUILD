# Maintainer: Lukas Fleischer <archlinux at cryptocrack dot de>
# Contributor: François Charette <firmicus ατ gmx δοτ net>

pkgname=perl-readonly
pkgver=1.03
pkgrel=2
pkgdesc="Create read-only scalars, arrays, hashes."
arch=('i686' 'x86_64')
url="http://search.cpan.org/~ROODE/Readonly"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://www.cpan.org/authors/id/R/RO/ROODE/Readonly-$pkgver.tar.gz")
md5sums=('0acef3a995ac9ecf575f66a726d638f4')

build() {
  cd $srcdir/Readonly-$pkgver

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd $srcdir/Readonly-$pkgver

  make install DESTDIR="${pkgdir}"
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
