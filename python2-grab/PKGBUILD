# Contributor: Sergey Mastykov <smastykov[at]gmail[dot]com>

pkgname=python2-grab  
pkgver=0.4.5
pkgrel=1 
pkgdesc="Pycurl wrapper"
arch=('any')
url="http://bitbucket.org/lorien/grab/"
license=('BSD')
groups=()
depends=('python2' 'python-pycurl' 'python2-lxml')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://pypi.python.org/packages/source/g/grab/grab-${pkgver}.tar.gz)
sha256sums=('dd44d77a82c9c190d3753623ab6cd4b95e2676910c96c48c2346cd0fe602a9d3')
noextract=()

build() {
  cd $startdir/src/grab-$pkgver
  python2 setup.py install --root="${pkgdir}" --optimize=1
}


build() {
  cd grab-${pkgver}
  python2 setup.py build
}

check() {
  cd grab-${pkgver}
  python2 setup.py test
}

package() {
  cd grab-${pkgver}
  python2 setup.py install --root=${pkgdir} --optimize=1
}

