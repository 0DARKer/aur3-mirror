pkgname='perl-event'
pkgver='1.23'
pkgrel='1'
pkgdesc="Event loop processing"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/Event'
source=('http://search.mcpan.org/CPAN/authors/id/E/ET/ETJ/Event-1.23.tar.gz')
md5sums=('ae3873d3312f2516d193d850b184143c')
sha512sums=('5b82ed0d1fc2779a925bf4731f5565562dd3e3d0cafe49958d9d0ab9a49183f1c64c1db24cf41f8460957e7b04bb832643403547dcd9634bd134998de17609a2')
_distdir="Event-1.23"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

