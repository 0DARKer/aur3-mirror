# Contributor:  Jannick Kuhr <opensource@kuhr.org>

pkgname=koffice-branch-svn
pkgver=1121511
pkgrel=2
pkgdesc="The stable SVN version of the free, integrated office suite for KDE, the K Desktop Environment"
url="http://www.koffice.org/"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdebase-runtime' 'kdepimlibs' 'glew' 'exiv2>=0.18' 'libwpd' 'gsl' 'wv2' 'qca' 'poppler-qt' 'qimageblitz' 'lcms' 'xdg-utils' 'shared-mime-info' 'pstoedit' 'graphicsmagick')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'boost' 'eigen')
conflicts=('koffice')
provides=('koffice')

source=()
md5sums=()

_svntrunk=svn://anonsvn.kde.org/home/kde/branches/koffice/2.2/koffice/
_svnmod=koffice

build() {
  cd ${srcdir}

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=RELEASE

  make VERBOSE=1 || return 1
  make DESTDIR="${pkgdir}" install || return 1

  rm -rf ${srcdir}/$_svnmod-build
}
