# Maintainer: Diego <cdprincipeat gmaildot com>

pkgname=openbox-theme-bluebird-openboxed
pkgver=0e61515
pkgrel=1
pkgdesc="Integration of Bluebird into Openbox. Based on Numix."
arch=('any')
url="https://github.com/scienzedellevanghe/Bluebird-openboxed"
license=('GPL3')
depends=('xfce-theme-bluebird-git')
makedepends=('git')
optdepends=()
source=('git://github.com/scienzedellevanghe/Bluebird-openboxed.git')
md5sums=('SKIP')

pkgver() {
  cd Bluebird-openboxed
  git describe --always | sed 's#-#_#g;s#v##'
}

package() {
  cd Bluebird-openboxed

  # create theme dir
  install -d -m 755 "$pkgdir"/usr/share/themes/Bluebird-openboxed

  # clean up
  rm -rf {.git,.gitignore,LICENSE,README.md,screenshot-01.png}

  # install theme
  cp -r . "$pkgdir"/usr/share/themes/Bluebird-openboxed/

}
