# Contributor: reMiND <detanator@gmail.com>

pkgname=aqemu-git
pkgver=20100712
pkgrel=1
pkgdesc="QEMU GUI written in Qt4"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/aqemu/"
license=('GPL2')
depends=('qt' 'openssl')
optdepends=('libvncserver')
#cmake check libvncserver automatically; for building without libvncserver
#uncomment -DWITHOUT_EMBEDDED_DISPLAY=on
makedepends=('git' 'cmake')
provides=('aqemu')
conflicts=('aqemu')
install=aqemu.install

_gitroot='git://aqemu.git.sourceforge.net/gitroot/aqemu/aqemu'
_gitname='aqemu'

build() {

  cd $srcdir

	msg "Connecting to $_gitname GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
	cd $_gitname && git pull origin
	msg "The local files are updated."
  else
	git clone $_gitroot
	msg "GIT checkout done"
  fi

  cd $srcdir
  mkdir build
  cd build

	msg "Starting make..."

  cmake ../$_gitname \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_INSTALL_PREFIX=/usr/
#	-DWITHOUT_EMBEDDED_DISPLAY=on
  make || return 1
  make DESTDIR=$pkgdir install || return 1

#	Cleaning build dir, remove pkgdir manually
	rm -r $srcdir/build/
#	Use git-gc, git-repack to speed up local
#	copy of git repository
}
