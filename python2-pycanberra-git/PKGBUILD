# Maintainer: Antony Ho <ntonyworkshop@gmail.com>
pkgname=python2-pycanberra-git
pkgver=0
pkgrel=1
pkgdesc="simple wrapper around most of the libcanberra public api"
arch=(any)
url="https://github.com/psykoyiko/pycanberra"
license=('(L)GPL2')
depends=('libcanberra' 'python2')
makedepends=('git')
replaces=('python2-pycanberra')
sha1sums=('SKIP')
_gitroot="git://github.com/psykoyiko/pycanberra.git"
_gitname="pycanberra"
_python_ver=2.7

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $gitname
  fi
  msg "GIT checkout done or server timeout"
}

pkgver() {
  cd "$srcdir/$_gitname"
  echo $(git rev-parse --short HEAD)
}

package() {
  mkdir -p $pkgdir/usr/lib/python${_python_ver}/site-packages
  install -p -m 0644 $srcdir/$_gitname/pycanberra.py* $pkgdir/usr/lib/python${_python_ver}/site-packages
  cd "$pkgdir/usr/lib/python$_python_ver/site-packages/"
  python2 -c 'import compileall, sys; sys.exit(not compileall.compile_file("pycanberra.py", ddir=".", force=1))'
} 
