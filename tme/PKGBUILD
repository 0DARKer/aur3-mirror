# Maintainer: Ruben Agin <phabrics@phabrics.com>
pkgname=tme
pkgver=1.0beta
pkgrel=1
pkgdesc="The Machine Emulator, or tme, provides a general-purpose framework for computer emulation."
arch=('i686' 'x86_64')
license=('GPL3')
url="http://phabrics.com"
makedepends=()
depends=('libltdl' 'libmnl' 'gtk3')
source=(http://phabrics.com/${pkgname}-${pkgver}.tar.gz)
install=$pkgname.install
md5sums=('90b0ec0249428f9a5d2b3ea37349fa64')

build()
{
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package()
{
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
