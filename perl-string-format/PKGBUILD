pkgname=perl-string-format
pkgver=1.16
pkgrel=2
pkgdesc="sprintf-like string formatting capabilities with arbitrary format definitions"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~DARREN/String-Format"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.12')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/D/DA/DARREN/String-Format-$pkgver.tar.gz) 
md5sums=('4c4214b891648bbbf74b3ecf5c8207d8')

build() {
  cd  $startdir/src/String-Format-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
