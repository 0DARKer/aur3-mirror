# Contributor: Allen Choong <allencch at hotmail dot com>

pkgname=canon-ufr
pkgver=2.60
pkgrel=1
pkgdesc="Canon UFR II/UFR II LT Printer Driver (including Canon imageCLASS MF4720w)"
url="http://support-asia.canon-asia.com/contents/ASIA/EN/0100270810.html"
arch=('i686' 'x86_64')
license=('custom')
source=("Linux_UFRII_PrinterDriver_V260_uk_EN.tar.gz::http://pdisp01.c-wss.com/gdl/WWUFORedirectTarget.do?id=MDEwMDAwMjcwODA4")
md5sums=("83b5a06af68c899a1eaf28abd5091899")


package() {
	if [ "${CARCH}" = 'x86_64' ]; then
	  dir=64-bit_Driver
	elif [ "${CARCH}" = 'i686' ]; then
	  dir=32-bit_Driver
	fi
	cd "${srcdir}/Linux_UFRII_PrinterDriver_V260_uk_EN/${dir}/Debian/"
	ar xv cndrvcups-common_2.60-1_i386.deb
	tar xzf data.tar.gz
	ar xv cndrvcups-ufr2-uk_2.60-1_i386.deb
	tar xzf data.tar.gz
	mv usr etc ${pkgdir}
}
