pkgname=libxen4
pkgver=4.0.0
pkgrel=2
pkgdesc="Xen 4.0.0 (hypervisor and tools)"
arch=(i686 x86_64)
url="http://xen.org/"
license="GPL"
depends=('xz-utils' 'bzip2' 'transfig' 'texlive-core' 'iproute' 'bridge-utils' 'python' 'sdl' 'zlib' 'e2fsprogs' 'bin86' 'pkgconfig' 'iasl')
makedepends=('dev86')
source=(http://bits.xensource.com/oss-xen/release/${pkgver}/xen-${pkgver}.tar.gz
        Config.mk
	Makefile
)
md5sums=('b147fe56d035c497c99898243aae8937'
	 'c45daaa75d754c710937c7085500f588'
	 'abce1c63b7d918210aec202a25086a95')
build() {
  cd $srcdir/xen-${pkgver}
  cp $srcdir/Config.mk .
  cp $srcdir/Makefile tools
  cd tools 
  LDFLAGS="/usr/lib/liblzma.so /usr/lib/libbz2.so" make || return 1
  make install DESTDIR=$pkgdir || return 1
  cd $pkgdir/usr && mv lib64 lib/ 
  rm -r $pkgdir/usr/include
  rm -r $pkgdir/var/
  
}
