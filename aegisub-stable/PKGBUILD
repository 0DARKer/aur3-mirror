pkgname=aegisub-stable
pkgver=2.1.8
pkgrel=1
pkgdesc="A general-purpose subtitle editor with ASS/SSA support"
arch=('i686' 'x86_64')
url="http://www.aegisub.net"
license=('GPL' 'BSD')
depends=('intltool' 'ffmpeg>=23619' 'lua' 'openal' 'wxgtk>=2.8.11' 'hunspell')
makedepends=('imagemagick>=6.6.2.10')
optdepends=('asa: for subtitle rendering'
            'libass: for subtitle rendering')
#options=(!libtool)
source=(aegisub-2.1.8-as_needed.patch dist.patch license.txt autogen.sh configure.in Makefile.am res.rc)

_dl1=http://ftp.aegisub.org/pub/releases/aegisub-$pkgver.tar.gz

md5sums=('e42833e4acca069a8d13b95f57954aed'
         '667a0acb3767fe2f93cc8269f1ca8271'
         '3e13350007702bd7117e8f35bac376f1'
         '315b0aa9954b6f911c79df80a81c7296'
         'df94dee752ccc045e08962320d70de9d'
         'f644fdc0e6d89c9de16bf3eb2dc5cafb'
         '7dff718394ca2a98ccdbbaa4892a4327')

build() {
  cd $srcdir
  wget $_dl1
  tar xvfz aegisub-$pkgver.tar.gz
  cd $srcdir/aegisub-$pkgver
  rm configure
  rm configure.in
  cp $srcdir/autogen.sh autogen.sh
  cp $srcdir/configure.in configure.in
  chmod +x autogen.sh
  rm src/Makefile.am
  cp $srcdir/Makefile.am src/Makefile.am
  cp $srcdir/res.rc src/res.rc

  patch -Np0 -i $srcdir/aegisub-2.1.8-as_needed.patch

  ./autogen.sh

  patch -Np0 -i $srcdir/dist.patch

  sed -i 's/cv_agi_with_ffmpeg/with_ffmpeg/' configure
  CPPFLAGS="-D__STDC_CONSTANT_MACROS"  ./configure --prefix=/usr \
  --with-player-audio=openal --without-{portaudio,alsa,oss} || return 1

  make || return 1
  make DESTDIR=$pkgdir install || return 1

  # menu icon fix
  sed -i 's/Icon=aegisub/Icon=\/usr\/share\/icons\/hicolor\/scalable\/apps\/aegisub.svg/' $pkgdir/usr/share/applications/aegisub.desktop || return 1

  # install the BSD license, although it is ruled by GPL according to the wiki:
  # (http://www.malakith.net/aegiwiki/Subtitling_software_comparison)
  install -D -m644 "$srcdir"/license.txt \
      "$pkgdir"/usr/share/licenses/$pkgname/license.txt
}
