# Maintainer: Dmitry Chusovitin <dchusovitin@gmail.com>
 
pkgname=docker-machine
pkgver=0.1.0_rc3
pkgrel=1
pkgdesc='Machine management for a container-centric world'
arch=('i686' 'x86_64')
url='https://github.com/docker/machine'
install="docker-machine.install"
license=('Apache')
depends=()

_arch=amd64
[[ $CARCH = i686 ]] && _arch=386

source=("docker-machine::https://github.com/docker/machine/releases/download/v${pkgver//_/-}/docker-machine_linux-${_arch}")

sha256sums=('3edd2458977c97893750da43d1a1c09b19aa37a8872ab7cce683d7e02d1b8fb4')
[[ $CARCH = i686 ]] && sha256sums[0]='dde206595665419064b632c76943cc55c5974a6330e5ce42a341a5b6a0a5a26e'

package() {
    install -Dm755 docker-machine "${pkgdir}/usr/bin/docker-machine"
}
