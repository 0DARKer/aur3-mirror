# Maintainer: M-Hashem <med.hashem@gmail.com>

pkgname=elkirtasse
pkgver=3.6
pkgrel=1
pkgdesc="Islamic reference books reader"
arch=('any')
url="http://www.elkirtasse.co.cc"
license=('GPL3')
depends=('qt4')
makedepends=('gcc' 'pkg-config')
source=(http://git.ojuba.org/cgit/elkirtasse/snapshot/${pkgname}-master.tar.bz2)
md5sums=('93425a716792800e26ba4000fc88fbd6')

build() {
  cd ${srcdir}/${pkgname}-master
  qmake-qt4
  make
}

package() {
  cd ${srcdir}/${pkgname}-master
  make INSTALL_ROOT=${pkgdir} install
  install -dm 755 ${pkgdir}/usr/bin
  mv ${pkgdir}/usr/share/elkirtasse/elkirtasse ${pkgdir}/usr/bin/elkirtasse
  install -Dm 644 /usr/share/icons/hicolor/48x48/apps/${pkgname}.png ${pkgdir}/usr/share/pixmaps/${pkgname}.png
}
