# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Contributor: Adam Hani Schakaki (krzd) <krzd@krzd.net>
# Based on the gnome-settings-daemon package trunk

_pkgbase=gnome-settings-daemon
pkgname=gnome-settings-daemon-dev
pkgver=2.91.91
pkgrel=1
pkgdesc='The GNOME Settings daemon'
arch=('i686' 'x86_64')
license=('GPL')
depends=('libgnomekbd-dev' 'gnome-desktop-3.0' 'libnotify' 'hicolor-icon-theme' 'libpulse' 'libcanberra-gtk3' 'gsettings-desktop-schemas-dev' 'nss' 'gconf' 'dconf' 'gtk3')
makedepends=('intltool')
options=('!emptydirs' '!libtool')
install=gnome-settings-daemon-dev.install
url='http://www.gnome.org'
groups=('gnome')
provides=("${_pkgbase}=${pkgver}")
conflicts=("${_pkgbase}")
replaces=(gnome-settings-daemon-pulse)
conflicts=(gnome-settings-daemon-pulse)
source=("http://ftp.gnome.org/pub/GNOME/sources/${_pkgbase}/2.91/${_pkgbase}-${pkgver}.tar.bz2")
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/bin --disable-static --enable-pulse
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}