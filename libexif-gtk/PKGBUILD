pkgname=libexif-gtk
pkgver=0.4.0
_pkgver=beta1
pkgrel=1
pkgdesc="GTK frontend to the libexif library"
arch=('i686' 'x86_64')
url="http://libexif.sourceforge.net"
license=('GPL')
depends=('libexif' 'gtk2')
options=('!libtool')
source=(http://downloads.sourceforge.net/project/libexif/$pkgname/$pkgver-$_pkgver/$pkgname-$pkgver-$_pkgver.tar.bz2)
md5sums=('f77092fee32f3fd7255d4fe0b49279bc')

build() {
  cd "$srcdir/$pkgname-$pkgver-$_pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver-$_pkgver"
  make DESTDIR="$pkgdir" install
}
