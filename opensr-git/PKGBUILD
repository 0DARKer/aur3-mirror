# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=opensr-git
pkgver=r350.7d88b0e
pkgrel=1
pkgdesc="Opensource multi-genre game based upon Space Rangers 2: Dominators"
arch=('i686' 'x86_64')
url="https://github.com/ObKo/OpenSR"
license=('GPL3')
depends=('boost' 'freetype2' 'glu' 'jsoncpp' 'mesa' 'python' 'sdl2_mixer')
makedepends=('git' 'cmake')
provides=('opensr')
source=("$pkgname"::'git://github.com/ObKo/OpenSR.git')
md5sums=('SKIP')

pkgver() {
	cd "$pkgname"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$pkgname"
	cmake -D CMAKE_INSTALL_PREFIX=/usr .
	make
}

package() {
	cd "$pkgname"
	make DESTDIR="$pkgdir" install
}