# Maintainer: Daniel T. Borelli < daltomi at aol >
# Only last stable branch 

pkgname=moai
pkgver=1.5
pkgrel=1
pkgdesc="Moai SDK is designed for mobile games, also run natively on Chrome browsers, Windows, Macintosh and Linux."
arch=('i686' 'x86_64')
url='https://github.com/moai/moai-dev'
license=('custom:CPAL')
depends=('mesa-libgl')
makedepends=('git' 'cmake')
install='moai.install'
_gitroot='git://github.com/moai/moai-dev.git'
_gitname='moai-dev'
_gitbranch="$pkgver-stable"
source=('UntzSystem.cpp.patch')
md5sums=('6cb2241379f5643d398c5b1e5f5c0892')

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin && git submodule update
    msg "The local files are updated."
  else
    git clone "$_gitroot" --branch "$_gitbranch" --depth=1 --single-branch "$_gitname"
    cd "$_gitname" && git submodule init && git submodule update
  fi

  msg "GIT checkout done or server timeout"

#Patch 
  cd '3rdparty/untz/src/native/sdl/'
  patch -p0 < $startdir/UntzSystem.cpp.patch

#Build  
  msg "Starting build..."
  cd $srcdir/$_gitname/
  ./bin/build-linux-sdl.sh 
}

package() {
  
# Bin
  install -Dm755 "$srcdir/$_gitname/release/linux/host-sdl/x64/bin/moai" "$pkgdir/usr/bin/$pkgname"
  
# Docs
  guides_dir="$pkgdir/usr/share/doc/$pkgname/guides"
  install -d "$guides_dir"
  install -Dm755 "$srcdir/$_gitname/docs/guides/"{*.pdf,*.doc} "$guides_dir"

# Images
  images_dir="$pkgdir/usr/share/doc/$pkgname/attribution images"
  install -d "$images_dir"
  install -Dm755 "$srcdir/$_gitname/docs/attribution images/"*.png "$images_dir"

# Samples (If you want a small package comment these 3 lines)
  samples_dir="$pkgdir/usr/share/doc/$pkgname/samples"
  install -d "$samples_dir"
  cp -dpr "$srcdir/$_gitname/samples/"* "$samples_dir"

# Licenses
  lic_dir="$pkgdir/usr/share/licenses/$pkgname"
  install -d "$lic_dir"
  install -Dm644 "$srcdir/$_gitname/docs/license.txt" "$lic_dir"
  install -Dm644 "$srcdir/$_gitname/docs/legal.txt" "$lic_dir"

# 3rdparty licenses
  lic3rd_dir="$pkgdir/usr/share/licenses/$pkgname/3rdparty"
  install -d "$lic3rd_dir"
  install -Dm644 "$srcdir/$_gitname/3rdparty/LICENSE" "$lic3rd_dir"
}
