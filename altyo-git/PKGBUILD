# Maintainer: willemw <willemw12@gmail.com>

_pkgname=altyo
pkgname=$_pkgname-git
pkgver=04bdd54
pkgrel=1
pkgdesc="Vala / GTK3 drop-down terminal emulator"
arch=('any')
url="https://github.com/linvinus/AltYo"
license=('GPL3')
depends=('vte3')
makedepends=('git' 'vala')
provides=($_pkgname)
conflicts=($_pkgname)
source=($_pkgname::git://github.com/linvinus/AltYo.git)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/$_pkgname"
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir/" install
}

