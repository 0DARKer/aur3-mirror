# Contributor: Jochen Immendörfer <jochen dot immendoerfer at gmail dot com>
pkgname=fmit
pkgver=0.97.7
pkgrel=1
pkgdesc="Free Music Instrument Tuner"
url="http://home.gna.org/fmit/index.html"
depends=('jack-audio-connection-kit' 'glut' 'qt3' 'libxi' 'fftw' 'freeglut')
license=("GPL")
source=(http://download.gna.org/fmit/$pkgname-$pkgver.tar.gz)
md5sums=('68eb65df869e3b26e5118c5bbdcd5447')
arch=('i686')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
