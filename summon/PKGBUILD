pkgname=summon
pkgver=1.8.6
pkgrel=1
pkgdesc="SUMMON is a python extension module that provides rapid prototyping of 2D visualizations"
arch=('i686' 'x86_64')
url="http://people.csail.mit.edu/rasmus/summon/index.shtml#about"
license=('LGPL')
depends=('python' 'sdl' 'freeglut')
source=("http://compbio.mit.edu/pub/summon/$pkgname-$pkgver.tar.gz")

build() {
        cd $startdir/src/$pkgname-$pkgver
        python setup.py install --root=$startdir/pkg || return 1
}
md5sums=('d0897c86ee8b84221d87001104e82509')
