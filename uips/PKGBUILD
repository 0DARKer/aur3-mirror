# Contributor: rabyte <rabyte__gmail>

pkgname=uips
pkgver=1.0
pkgrel=5
pkgdesc="A commandline-based utility for creating and applying IPS patches"
arch=('i686' 'x86_64')
url="http://www.neillcorlett.com/uips/"
license=('custom')
source=(http://www.neillcorlett.com/downloads/uips.c \
	http://www.neillcorlett.com/downloads/uips.txt)
md5sums=('7e6fa397f4dc7e25283d82f82b7ceb4d'
         'b3a403c11b2bcfec1b48b09ab4a6c130')

build() {
  cd $srcdir

  gcc ${CFLAGS} uips.c -o uips || return 1

  install -m755 -D uips $pkgdir/usr/bin/uips
  install -m644 -D uips.txt $pkgdir/usr/share/licenses/uips/uips.txt
}
