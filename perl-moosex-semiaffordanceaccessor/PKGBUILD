pkgver='0.08'
pkgrel='1'
pkgdesc="Name your accessors foo() and set_foo()"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-moose>=0.94')
makedepends=()
url='http://search.cpan.org/dist/MooseX-SemiAffordanceAccessor'
source=('http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/MooseX-SemiAffordanceAccessor-0.08.tar.gz')
