# Contributor: Nick B <Shirakawasuna at gmail _dot_ com>
pkgname=tennix
pkgver=1.0
pkgrel=1
pkgdesc="An SDL port of a simple two-player tennis game."
arch=('i686' 'x86_64')
url="http://icculus.org/tennix/"
license=('GPL2')
depends=('python' 'sdl' 'sdl_image' 'sdl_mixer' 'sdl_ttf')
source=(http://offload1.icculus.org:9090/tennix/downloads/tennix-$pkgver.tar.gz)
md5sums=('b6eba0d14c096a8c35ecaf18fa859fb7')

build() {

 cd $startdir/src/$pkgname-$pkgver
 make PREFIX=/usr DATADIR=/usr/share PYTHON_VERSION=2.6 || return 1
 make PREFIX=/usr DATADIR=/usr/share DESTDIR=$startdir/pkg install || return 1

}
