pkgname=perl-string-bufferstack
pkgver=1.15
pkgrel=1
pkgdesc="Perl module providing a framework for storing nested buffers"
arch=("any")
url="http://search.cpan.org/dist/String-BufferStack"
license=("PerlArtistic" "GPL")
depends=("perl>=5.8.0")
source=(http://search.cpan.org/CPAN/authors/id/A/AL/ALEXMV/String-BufferStack-1.15.tar.gz)
options=(!emptydirs)
md5sums=("740817a889453b56c21c7885122a5c3d")

build() {
  cd "$srcdir/String-BufferStack-1.15"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/String-BufferStack-1.15"
  make test
}

package() {
  cd "$srcdir/String-BufferStack-1.15"
  make install DESTDIR="$pkgdir"
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
