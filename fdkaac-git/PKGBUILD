# Maintainer: DrZaius <lou[at]fakeoutdoorsman[dot]com>

pkgname=fdkaac-git
pkgver=20130108
pkgrel=1
pkgdesc="Encoder frontend for libfdk-aac"
arch=('i686' 'x86_64')
license=('custom')
depends=('libfdk-aac-git')
makedepends=('git')
url="https://github.com/nu774/fdkaac"
_gitroot="git://github.com/nu774/fdkaac.git"
_gitname="fdkaac"

build() {
  cd "$srcdir"
  msg "Connecting to remote Git repository..."
  if [ -d "$_gitname" ] ; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone --depth=1 "$_gitroot" "$_gitname"
  fi
  msg "Git checkout done or server timeout"
  rm -rf "$srcdir/$_gitname-build"
  cp -a "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir" install
  install -m755 -d "$pkgdir/usr/share/licenses/$pkgname"
  install -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/"
  rm -rf "$srcdir/$_gitname-build"
}
