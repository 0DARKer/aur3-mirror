pkgname=craftbukkit-plugin-essentials-full
pkgver=2.11.1.6
pkgrel=1
pkgdesc="Essentials offers about 100 commands useful on just about every server, from kits to mob spawning."
arch=(any)
url="http://dev.bukkit.org/server-mods/essentials"
license=("GPLv3")
depends=("craftbukkit>=1.5.2r0.1")
conflicts=("craftbukkit-plugin-essentials-extras" "craftbukkit-plugin-essentials-gm" "craftbukkit-plugin-essentials")
source=("http://ci.ess3.net/repository/download/bt9/5275:id/Essentials-full.zip?guest=1")
md5sums=('1811f710e225fa36aea51a5b8a01c92c')

package() {
  find . -name '*.jar' | xargs -rtl1 -I {} install -Dm644 {} "$pkgdir/srv/craftbukkit/plugins/"{}
}

