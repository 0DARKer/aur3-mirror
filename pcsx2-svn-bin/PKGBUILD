#PCSX2-svn-bin maintainer: Hans-Kristian Arntzen <maister at archlinux.us>
pkgname=pcsx2-svn-bin
pkgver=3881
pkgrel=2
pkgdesc="A PlayStation 2 emulator."
arch=('i686' 'x86_64')
url="http://www.pcsx2.net"
license=('GPL')

if [ $CARCH == "x86_64" ]; then
	depends=('lib32-bzip2' 'lib32-zlib' 'lib32-gtk2' 'lib32-nvidia-cg-toolkit' 'lib32-alsa-lib' 'lib32-sdl' 'lib32-wxgtk' 'lib32-libjpeg6' 'lib32-glew' 'lib32-portaudio-svn')
else
	depends=('bzip2' 'zlib' 'gtk2' 'nvidia-cg-toolkit' 'alsa-lib' 'sdl' 'wxgtk' 'libjpeg6' 'glew' 'portaudio')
fi
install="pcsx2.install"
source=('http://pcsx2.googlecode.com/files/pcsx2-0.9.7-r3881-linux.tar.gz' 'pcsx2-bin.sh' )
md5sums=('92ec4c51424af836b5d35d89efe0cd8f'
         'ec72beb08ed4f3ae97b3a13fe228aaf1')

build()
{
   /bin/true
}

package() 
{
	cd $srcdir

	mkdir -p ${pkgdir}/opt/
	cp -r ${srcdir}/pcsx2-0.9.7-r3881/ ${pkgdir}/opt/pcsx2-bin/ || return 1

	install -m0755 -D ${srcdir}/pcsx2-bin.sh ${pkgdir}/usr/bin/pcsx2-bin || return 1
}
