_pkgbasename=pcsx2
pkgname=$_pkgbasename-svn-bin
pkgver=3881
pkgrel=3
pkgdesc="A PlayStation 2 emulator (Binary)."
arch=('i686' 'x86_64')
url="http://www.pcsx2.net"
license=('GPL')
if [ $CARCH == "x86_64" ]; then
	depends=('lib32-bzip2' 'lib32-gtk2' 'lib32-alsa-lib' 'lib32-sdl'
			 'lib32-zlib' 'lib32-libjpeg6' 'lib32-wxgtk' 'lib32-glew'
			 'lib32-nvidia-cg-toolkit' 'lib32-portaudio')
else
	depends=('bzip2' 'gtk2' 'alsa-lib' 'sdl' 'zlib' 'libjpeg6' 'wxgtk'
			 'glew' 'nvidia-cg-toolkit' 'portaudio')
fi
conflicts=('pcsx2' 'pcsx2-svn' 'pcsx2-bin') # Same destination folders
install="pcsx2.install"
source=("http://$_pkgbasename.googlecode.com/files/$_pkgbasename-0.9.7-r$pkgver-linux.tar.gz"
		"pcsx2.sh")
md5sums=('92ec4c51424af836b5d35d89efe0cd8f'
         'c3f5a0dc776362db1950c8b0eb4c0a69')

build() {
	return 0
}

package() {
	cd ${srcdir}/pcsx2-0.9.7-r$pkgver/
	
	mkdir -p ${pkgdir}/opt/pcsx2 ${pkgdir}/usr/share/man/man1
	cp -rf * ${pkgdir}/opt/pcsx2/
	# prepare man page
	gzip -9 docs/pcsx2.man
	mv docs/pcsx2.man.gz ${pkgdir}/usr/share/man/man1/pcsx2.1.gz
	
	install -Dm0755 ${srcdir}/pcsx2.sh ${pkgdir}/usr/bin/pcsx2
}
