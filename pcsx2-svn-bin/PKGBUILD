_pkgbasename=pcsx2
pkgname=$_pkgbasename-svn-bin
pkgver=3881
pkgrel=5
pkgdesc="A PlayStation 2 emulator (Binary)."
arch=('i686' 'x86_64')
url="http://www.pcsx2.net"
license=('GPL')
if [ $CARCH == "x86_64" ]; then
	depends=('lib32-bzip2' 'lib32-gtk2' 'lib32-alsa-lib' 'lib32-sdl'
			 'lib32-zlib' 'lib32-libjpeg' 'lib32-wxgtk' 'lib32-glew'
			 'lib32-nvidia-cg-toolkit' 'lib32-portaudio' 'lib32-a52dec')
else
	depends=('bzip2' 'gtk2' 'alsa-lib' 'sdl' 'zlib' 'libjpeg' 'wxgtk'
			 'glew' 'nvidia-cg-toolkit' 'portaudio' 'a52dec')
fi
conflicts=('pcsx2' 'pcsx2-svn' 'pcsx2-bin') # Same destination folders
install="pcsx2.install"
source=("http://$_pkgbasename.googlecode.com/files/$_pkgbasename-0.9.7-r$pkgver-linux.tar.gz"
		'pcsx2.sh' 'pcsx2.xpm' 'pcsx2.desktop')
md5sums=('92ec4c51424af836b5d35d89efe0cd8f'
         'c3f5a0dc776362db1950c8b0eb4c0a69'
         '18cb3c5a243a27363553d3e1008210c0'
         'b055ff7c0f236f33702f4813ae4b980d')

package() {
	cd "${srcdir}/pcsx2-0.9.7-r$pkgver"
	
	mkdir -p "${pkgdir}/opt/pcsx2" "${pkgdir}/usr/share/man/man1"
	cp -rPf * "${pkgdir}/opt/pcsx2/"
	# Install Man page
   	gzip -9 "${pkgdir}/opt/pcsx2/docs/pcsx2.man"
	mv "${pkgdir}/opt/pcsx2/docs/pcsx2.man.gz" "${pkgdir}/usr/share/man/man1/pcsx2.1.gz"
	# Install runnable script, icon and desktop item
	install -Dm755 "${srcdir}/pcsx2.sh" "${pkgdir}/usr/bin/pcsx2"
	install -Dm644 "${srcdir}/pcsx2.xpm" "${pkgdir}/usr/share/pixmaps/pcsx2.xpm"
	install -Dm644 "${srcdir}/pcsx2.desktop" "${pkgdir}/usr/share/applications/pcsx2.desktop"
}
