# $Id: PKGBUILD 31413 2009-03-26 21:59:10Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Tom K <tomk@runbox.com>

_name=ekiga
pkgname=${_name}-lite
pkgver=3.3.1
pkgrel=1
pkgdesc="Ekiga lite version (no evolution, gnome) - VOIP/Videoconferencing app (SIP and H.323 support)"
url="http://www.ekiga.org"
license=(GPL)
arch=(i686 x86_64)
depends=('opal>=3.10.1' 'ptlib>=2.10.1' 'libsigc++>=2.2.8' 'libxv' 'gtk2>=2.12.0' 'gstreamer0.10-base' 'perl' 'boost-libs')
makedepends=('pkgconfig' 'intltool' 'boost')
conflicts=('ekiga')
provides=('gnomemeeting')
replaces=('gnomemeeting')
options=(!emptydirs)
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/gnome/sources/${_name}/${pkgver%.*}/${_name}-${pkgver}.tar.bz2)
sha256sums=('d5217760b8c63ea8e7865f00950847f67a2904910e3f885c23cc56a8572fbb33')

build() {
  cd "${srcdir}/${_name}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var \
              --disable-schemas-install \
              --disable-avahi \
              --disable-dbus \
              --disable-eds \
              --disable-gconf \
              --disable-gdu \
              --disable-gnome \
              --disable-ldap \
              --disable-notify \
              --disable-scrollkeeper \
              --enable-gstreamer \
              || return 1
  #sed -i -e 's/-fno-exceptions//' lib/engine/components/opal/Makefile || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
