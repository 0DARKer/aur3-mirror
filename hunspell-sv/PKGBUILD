# Made using Oscar Carlsson's hunspell-sv-se-PKGBUILD as a template

pkgname=hunspell-sv
pkgver=20101007
pkgrel=4
pkgdesc="Swedish dictionaries for Hunspell"
arch=('i686' 'x86_64')
url="http://hunspell.sourceforge.net/"
license=('MPL' 'GPL2' 'GPL3' 'LGPL2.1' 'LGPL3')
depends=('hunspell')
source=('http://extensions.services.openoffice.org/e-files/1080/8/ooo_swedish_dict_1.44.oxt'
	'http://extensions.services.openoffice.org/e-files/3592/1/ooo_swedish_finland_dict_1.42.oxt')
md5sums=('097b446ccf975c7096f487a039d422f6'
	 'da25b40ebe1d0627d897479801c1eba9')

build() {
  cd $srcdir/dictionaries
  install -D -m644 sv_SE.dic $pkgdir/usr/share/hunspell/sv_SE.dic
  install -D -m644 sv_SE.aff $pkgdir/usr/share/hunspell/sv_SE.aff
  install -D -m644 sv_FI.dic $pkgdir/usr/share/hunspell/sv_FI.dic
  install -D -m644 sv_FI.aff $pkgdir/usr/share/hunspell/sv_FI.aff
  install -D -m644 ../LICENSE_sv_SE.txt $pkgdir/usr/share/licenses/hunspell-sv/license-sv-se.txt
  install -D -m644 ../LICENSE_sv_FI.txt $pkgdir/usr/share/licenses/hunspell-sv/license-sv-fi.txt

  install -dm755 ${pkgdir}/usr/share/myspell/dicts
  pushd $pkgdir/usr/share/myspell/dicts
  ln -sv /usr/share/hunspell/sv_SE.dic .
  ln -sv /usr/share/hunspell/sv_SE.aff .
  ln -sv /usr/share/hunspell/sv_FI.dic .
  ln -sv /usr/share/hunspell/sv_FI.aff .
  popd
}
