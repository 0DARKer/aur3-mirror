# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=quazip
pkgver=0.2.3
pkgrel=2
pkgdesc="C++ wrapper for the Gilles Vollant's ZIP/UNZIP C package."
arch=(i686 x86_64)
depends=('qt' 'zlib' 'openssl')
makedepends=('cmake')
source=(http://exaro.googlecode.com/files/quazip-cmaked.tar.bz2)
url="http://sourceforge.net/projects/quazip/"
license=('LGPL')
md5sums=('1dc8a78cda8e74daa79fe9b349fc1bcc')

build() {
  cd ${srcdir}/$pkgname
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
