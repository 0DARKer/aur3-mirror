# Maintainer: Markus Unterwaditzer <markus[AT]unterwaditzer.net>
pkgname=hummstrummengine
pkgver=0.5
pkgrel=1
pkgdesc="Graphics engine for the game Humm and Strumm (DO NOT USE)"
url="http://hummstrumm.blogspot.com/"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('xorg-server-devel' 'libgl' 'libglapi')
optdepends=()
makedepends=('cmake' 'doxygen' 'texlive-core')
source=("http://hummstrumm.googlecode.com/files/hummstrumm-0.5.tar.gz")
md5sums=('ed5fa8b029072b904066d21535efeb94')

build() {
  cd "$srcdir/hummstrumm-$pkgver"
  cmake -DCMAKE_INSTALL_PREFIX="$pkgdir" .
  make
}

package() {
  cd "$pkgdir"
  make install
}

