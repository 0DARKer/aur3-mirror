# Maintainer: Splashy <splash at mailoo dot org>
pkgname=deadbeef-qt
pkgver=20130221
pkgrel=1
pkgdesc="Qt based user interface plugin for DeaDBeeF music player."
arch=('i686' 'x86_64')
url='https://bitbucket.org/tonn/deadbeef-qt/wiki/Home'
license=('GPL2')
depends=('qt4' 'deadbeef')
source=("https://github.com/redpunk231/$pkgname/archive/master.zip")
md5sums=('15360c19fff8b8d8b5e79931b429a92f')
build() {
        mkdir -p "${srcdir}/build"
        cd "${srcdir}/build"
        cmake "${srcdir}/${pkgname}-master" -DCMAKE_INSTALL_PREFIX="${pkgdir}/usr"
        make 
}
package() {
        cd "${srcdir}/build" && make install
	msg "Please add blacklist_plugins gtkui to ~/.config/deadbeef/config to disable default DeaDBeeF ui plugin."
}
