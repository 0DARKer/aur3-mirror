# Maintainer: Nathan Fisher <nfisher dot sr gmail com>

pkgname=pekwm-menu
pkgver=0.1
pkgrel=1
pkgdesc="Dynamic xdg menu creator for pekwm"
url="https://bitbucket.org/nfisher1226/pekwm-menu"
arch=('i686' 'x86_64')
license=('GPL')
depends=('menu-cache' 'gtk2')
optdepends=('lxmenu-data: LXDE menus' 'gnome-menus: GNOME menus')
conflicts=('pekwm-menu-hg')
provides=('pekwm-menu')
source=https://bitbucket.org/nfisher1226/pekwm-menu/downloads/pekwm-menu-0.1.tar.gz
sha256sums=('a54c4048514935ecb8e364d5e459cadc2a0ff46501e0f95f5f18f94ca1e255a8')

build() {
  cd "${srcdir}/$pkgname-$pkgver"
  make
}

package() {
  cd "${srcdir}/$pkgname-$pkgver"
  make install DESTDIR="${pkgdir}/usr/"
}
