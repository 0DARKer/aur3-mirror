# Mantainer: Diego

pkgname=gtk-theme-numix-white
pkgver=1.2
pkgrel=1
pkgdesc="Numix White is a Gtk 3 and Gtk 2 theme, based of the original Numix theme"
arch=('any')
url="http://thevirtualdragon.deviantart.com/art/Numix-White-Gtk-Theme-v1-2-367777347"
license=('GPL3')
depends=('gtk-engine-murrine')
source=(${pkgname}-${pkgver}.zip::http://fc02.deviantart.net/fs71/f/2013/121/f/e/numix_white__gtk_theme_v1_2_by_thevirtualdragon-d62yqtf.zip)
sha1sums=('e18f2ffb5c31ea44f1fd4c5a47ec141d2c3344ee')

package() {

  # remove unneeded files
  rm -f .gitignore LICENSE README

  # install theme
  find . -type f -exec \
    install -D -m 644 '{}' "$pkgdir/usr/share/themes/{}" \;
}


