# Maintainer: Nikita Skovoroda <chalkerx@gmail.com>

pkgname=qt5-websockets-git
pkgver=v0.9.0.258.gd00327c
pkgrel=1
pkgdesc="Qt add-on module, implementing WebSockets (both client and server)."
arch=('i686' 'x86_64')
url="https://qt.gitorious.org/qt/qtwebsockets/"
license=('LGPL')
depends=('qt5-base')
makedepends=('git')
provides=('qt5-websockets')
conflicts=('qt5-websockets')
source=("git://gitorious.org/qt/qtwebsockets.git")
sha256sums=('SKIP')
_gitname='qtwebsockets'

pkgver() {
	cd "$srcdir/$_gitname"
	git describe --always | sed 's|-|.|g'
}

build() {
	cd "$srcdir/$_gitname"
	qmake
	make
}

package() {
	cd "$srcdir/$_gitname"
	make INSTALL_ROOT="$pkgdir" install
}
