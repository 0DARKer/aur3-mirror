# Maintainer:  dickeny@gmail.com

_pkgname=man-pages-zh
pkgname="${_pkgname}_cn"
pkgver=1.5.1
pkgrel=1
pkgdesc="A somewhat comprehensive collection of Chinese Linux man pages"
arch=('any')
url=("http://manpages-zh.googlecode.com")
license=('GPL2')
depends=("man-db")
makedepends=()
replaces=()
conflicts=()
provides=()
options=()
source=("http://manpages-zh.googlecode.com/files/${_pkgname/-/}-${pkgver}.tar.gz")
md5sums=("13275fd039de8788b15151c896150bc4")

build() {
    cd "${srcdir}/${_pkgname/-/}-${pkgver}"
    ./configure --prefix=/usr --disable-zhtw || return 1
	make || return 1
	make install DESTDIR="${pkgdir}" || return 1

    # this file may cause makepkg crash while doing gzip
    cd "${pkgdir}"
    gzip 'usr/share/man/zh_CN/man1/[.1'
}

