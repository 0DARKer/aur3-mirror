# Maintainer: lilydjwg <lilydjwg@gmail.com>
pkgname=dnscrypt-proxy-git
pkgver=1.3.1.12_ge70029a
pkgrel=1
pkgdesc="A tool for securing communications between a client and a DNS resolver."
arch=('i686' 'x86_64')
url="http://dnscrypt.org/"
license=('BSD')
depends=('libsodium')
makedepends=('git')
md5sums=()
backup=('etc/conf.d/dnscrypt-proxy')
provides=(dnscrypt-proxy=1.3.0)
_gitroot="git://github.com/jedisct1/dnscrypt-proxy.git"
_gitname="dnscrypt-proxy"
source=("git+$_gitroot")
md5sums=(SKIP)

pkgver() {
  cd "$srcdir/$_gitname"
  git describe --tags | sed 's/-/./;s/-/_/g'
}

build() {
  cd "$srcdir/$_gitname"
  ./autogen.sh
  ./configure --prefix=/usr --sbindir=/usr/bin
  make
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR=${pkgdir} install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
  install -D -m644 packages/opensuse/dnscrypt.service "${pkgdir}/usr/lib/systemd/system/dnscrypt.service"
}
