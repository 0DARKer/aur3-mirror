# Contributor: Kostas Andreadis <kmandreadis@gmail.com>
pkgname=lacaml
pkgver=5.4.7
pkgrel=1
pkgdesc="BLAS/LAPACK-interface for OCaml"
arch=('i686' 'x86_64')
url="http://ocaml.info/home/ocaml_sources.html"
license=('LGPL')
depends=('lapack' 'blas')
makedepends=('ocaml-findlib' 'make')
install=
source=(http://hg.ocaml.info/release/lacaml/archive/release-${pkgver}.tar.gz)
md5sums=('74c2e068ea13a549117695cf527e0768')
options=(!strip)

build() {
  cd "$srcdir/${pkgname}-release-$pkgver"

  mkdir -p $pkgdir$(ocamlfind printconf destdir)
  make || return 1
  make OCAMLFIND_INSTFLAGS="-destdir $pkgdir$(ocamlfind printconf destdir)" install
}

# vim:set ts=2 sw=2 et:
