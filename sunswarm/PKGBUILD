# Maintainer: Olivier Farges <farges.olivier@gmail.com>

pkgname=sunswarm
pkgver=20130328
pkgrel=1
pkgdesc="Tool to optimize solar central receiver"
arch=('any')
url="http://www.starwest.ups-tlse.fr"
license=('GPL3')
depends=('starlight' 'gnuplot' 'texlive-core')
makedepends=('git')
conflicts=()
provides=()
install=

source=()
md5sums=()

_gitroot="http://gitlab.red-pill.fr/sunswarm/sunswarm.git"
_gitname="sunswarm"

build() {

  cd ~/
  msg "Connecting to github.com"

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
   
   echo 'export GNUPLOT_DRIVER_DIR=/usr/bin' >> ~/.bash_profile
   cd ~/$_gitname
   mkdir objs
    cd ~/
  fi

  cd ~/$_gitname
  make
}