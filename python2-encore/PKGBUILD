# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-encore
pkgver=0.3
pkgrel=1
pkgdesc="A collection of core-level utility modules"
arch=('any')
url="https://github.com/enthought/encore"
license=('BSD')
depends=('python2')
makedepends=('python2-distribute')
options=(!emptydirs)

source=("https://github.com/enthought/encore/archive/${pkgver}.tar.gz")
md5sums=('2c8c15390711d7d55d11dafd7b7c3fdb')

build() {
  cd "$srcdir"/encore-$pkgver

  python2 setup.py build
}

package() {
  cd "$srcdir"/encore-$pkgver

  python2 setup.py install --root="$pkgdir"/ --optimize=1

  sed -i -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
    $(find "${pkgdir}" -name '*.py')

  install -D "LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

