# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.17
pkgname='perl-pathtools'
pkgver='3.31'
pkgrel='1'
pkgdesc="Current working directory functions"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
# workaround for upgrading Module::Install which depends on a longer version
# number
provides=('perl-pathtools=3.3100' )
url='http://search.cpan.org/dist/PathTools'
source=('http://search.cpan.org/CPAN/authors/id/S/SM/SMUELLER/PathTools-3.31.tar.gz')
md5sums=('48d473cea29f4c14631b3600f820480c')

build() {
  DIST_DIR="${srcdir}/PathTools-3.31"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
