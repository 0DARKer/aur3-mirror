# Contributor: Tom Billiet (mouse256@gmail.com)

pkgname=ksubtitleripper
pkgver=0.3.1
pkgrel=1
pkgdesc="A GUI for KDE to rip DVD subtitles from vob to srt."
url="http://ksubtitleripper.berlios.de/"
license="GPL"
arch=('i686')
depends=(gocr transcode kdebase)
source=(http://download.berlios.de/$pkgname/$pkgname-$pkgver.tar.bz2 gocr.patch previewcrash.patch)
options=(!strip)
md5sums=(72142c272cb37ddc9eb81d2f6b455105 ea5856b22bd4bb22a2c501f1fbf25e6d 4908e45250219658fea50cc7a3ada394)
build() {
	cd $startdir/src/$pkgname-$pkgver

	# Source the QT3 profile
	[ -f /etc/profile.d/qt.sh ] && source /etc/profile.d/qt.sh
	
	patch -Np2 -i $startdir/gocr.patch
	patch -Np2 -i $startdir/previewcrash.patch
	
	./configure --prefix=/opt/kde
  	make || return 1
  	make DESTDIR=$startdir/pkg install
}
