# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-carrier-weight
_pkgname=trytond_carrier_weight
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The carrier_weight module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-carrier>=3.2' 'trytond-company>=3.2' 'trytond-currency>=3.2' 'trytond-product>=3.2' 'trytond-product-measurements>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("f69908c1e9b3f0308b09d14024abd8c4")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}