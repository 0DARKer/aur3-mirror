# Maintainer: JHeaton <jheaton at archlinux dot us>
# Contributor: archtux <antonio.arias99999@gmail.com>
pkgname=nomnom
pkgver=0.1.4
pkgrel=1
pkgdesc="Application for downloading videos from Youtube and other similar video websites"
arch=('i686' 'x86_64')
url="http://nomnom.sourceforge.net/"
license=('GPL3')
depends=('qt' 'quvi>=0.2.8' 'umph')
conflicts=('nomnom-git')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('9104c74746aa1e6c9014c53b4b067bbd')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cmake . -DCMAKE_INSTALL_PREFIX=/usr
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
