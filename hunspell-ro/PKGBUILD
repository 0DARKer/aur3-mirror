# Maintainer: Ionut Biru <ibiru@archlinux.org>

pkgname=hunspell-ro
pkgver=3.3.6
pkgrel=1
pkgdesc="Romanian dictionary for Hunspell"
arch=('any')
url="http://sourceforge.net/projects/rospell/"
license=('LGPL' 'GPL' 'MPL')
depends=('hunspell')
source=(http://downloads.sourceforge.net/rospell/Romanian%20dictionaries/dict-${pkgver}/ro_RO.${pkgver}.zip)
md5sums=('c3bed9e92b83e5684e4ba8d4c0547993')

build() {
  cd "${srcdir}"
  install -D -m644 ro_RO.dic "${pkgdir}/usr/share/myspell/ro_RO.dic"
  install -D -m644 ro_RO.aff "${pkgdir}/usr/share/myspell/ro_RO.aff"
}
