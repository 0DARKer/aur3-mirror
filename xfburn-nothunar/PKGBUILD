pkgname=xfburn-nothunar
_pkg=xfburn
pkgver=0.4.3
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="a simple CD/DVD burning tool based on libburnia libraries with no thunar dependencies"
url="http://goodies.xfce.org/projects/applications/xfburn"
license=('GPL2')
groups=('xfce4-goodies')
install=${_pkg}.install
depends=('libburn>=0.7.6.pl00' 'libisofs>=0.6.28' 'libxfcegui4>=4.6.3' 'hicolor-icon-theme' 
         'librsvg' 'gstreamer0.10-base>=0.10.26' 'desktop-file-utils')
source=(http://www.xfce.org/archive/src/apps/$_pkg/0.4/$_pkg-$pkgver.tar.bz2)
md5sums=('147cdc2d909e751125be16103b8dc81f')

build() { 
  cd ${srcdir}/$_pkg-$pkgver
  ./configure --prefix=/usr --enable-gstreamer --disable-thunar-vfs \
	--enable-dbus --enable-hal
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
} 
