# Maintainer: Mathias Rohnstock <linksoft@gmx.de>

pkgname=jupiter-support-eee
pkgver=0.0.12
pkgrel=1
pkgdesc="Simple, easy to use hardware and power management applet for all i386 and x86_64 Linux laptops, and netbooks (EeePC Support)"
url="http://sourceforge.net/projects/jupiter"
license=('none')
makedepends=('rpmextract')
depends=('jupiter')
optdepends=('gnome-system-monitor: A system monitor for GNOME')
arch=('any')
source=(http://sourceforge.net/projects/jupiter/files/${pkgname}-${pkgver}-0.noarch.rpm)
md5sums=('844fb9c0145f8c338b4a5707f5cc8afd')
install=${pkgname}.install

build() {
  rpmextract.sh *.rpm
  cp -R ${srcdir}/{etc,usr} ${pkgdir}/
  mkdir ${pkgdir}/etc/default
  cp ${srcdir}/tmp/jupiter-support-eee ${pkgdir}/etc/default/
}

