arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-http-message' 'perl-json' 'perl-libwww' 'perl-lwp-protocol-psgi')
makedepends=()
url='http://search.cpan.org/dist/Selenium-Remote-Driver'
source=('http://search.cpan.org/CPAN/authors/id/C/CH/CHOWES/Selenium-Remote-Driver-0.16.tar.gz')
