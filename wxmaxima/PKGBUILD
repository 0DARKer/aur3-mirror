# $Id$
# Maintainer: Raphael Maville <rafmav@free.fr>

pkgname=wxmaxima
pkgver=0.8.7
pkgrel=1
pkgdesc="cross platform GUI for the computer algebra system Maxima."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/maxima/"
license=('GPL2')

depends=('maxima')
# 'wxwidgets' ?

source=(http://downloads.sourceforge.net/project/${pkgname}/wxMaxima/${pkgver}/wxMaxima-${pkgver}.tar.gz)
md5sums=('48b5d9600f672814c86050333cc12df0')

build() {
  cd "${srcdir}/wxMaxima-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "$srcdir/wxMaxima-$pkgver"

  make DESTDIR="$pkgdir/" install

## TODO:
  # Desktop & Pixmap files
  #mkdir -p "${pkgdir}"/usr/share/{applications,pixmaps}
  #install -Dm644 "../${pkgname}.desktop" "${pkgdir}/usr/share/applications"
  #install -Dm644 ../image.png "${pkgdir}/usr/share/pixmaps/${pkgname}.png"
}
