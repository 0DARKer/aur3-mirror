pkgname=plasma-theme-produkt
pkgver=0.2.2
pkgrel=1
pkgdesc="A textured plasma theme for KDE 4"
arch=('any')
license=('GPL')
url="http://kde-look.org/content/show.php?content=124213"
depends=('kdebase-runtime')
makedepends=('cmake')
source=('http://kde-look.org/CONTENT/content-files/124213-produkt.tar.gz')
md5sums=('3ab339758e7fd120b4a9df1c1f8e565c')

build(){
  cd ${srcdir}/produkt-produkt

  cmake . -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
}

package() {
  cd ${srcdir}/produkt-produkt
  make DESTDIR=${pkgdir} install
}
