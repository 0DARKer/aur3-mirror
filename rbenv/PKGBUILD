# Maintainer: Vladimir Chizhov <jagoterr@gmail.com>
pkgname=rbenv
pkgver=0.1.2
pkgrel=1
pkgdesc="Simple Ruby version manager"
arch=('any')
license=('GPL')
depends=('ruby')
source=("https://github.com/sstephenson/rbenv/zipball/v${pkgver}")
md5sums=('c206a59638d362d989370516cee81a01')
url="https://github.com/sstephenson/rbenv"

build() {
  cd $srcdir
  #unzip "v${pkgver}"
  cd sstephenson-rbenv-49ecbe1
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/rbenv/libexec
  # install -m 755 $srcdir/rbenv $pkgdir/usr/bin/
  install -m 755 ./libexec/* $pkgdir/usr/share/rbenv/libexec/
  ln -s /usr/share/rbenv/libexec/rbenv $pkgdir/usr/bin/
}

