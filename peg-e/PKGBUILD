# Contributor: Graeme Gott <graeme@gottcode.org>
pkgname=peg-e
pkgver=1.1.0
pkgrel=1
pkgdesc="Peg elimination game"
arch=('i686' 'x86_64')
url="http://gottcode.org/peg-e/"
license=('GPL')
depends=('qt')
source=(http://gottcode.org/peg-e/$pkgname-$pkgver-src.tar.bz2)
md5sums=('e2835ce61243f6fc77579b3a4e8010a5')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  qmake PREFIX=/usr
  make || return 1
  make INSTALL_ROOT=$pkgdir install
}
