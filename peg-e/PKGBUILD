# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=peg-e
pkgver=1.1.0
pkgrel=2
pkgdesc="Peg elimination game"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL')
depends=('qt' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('e2835ce61243f6fc77579b3a4e8010a5')
sha256sums=('ecd82c94a628161d014700d19c36f9299995c0963b053fb096e3f3b173d2655b')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
