# Maintainer: Alexander Kratzsch <alexander-kratzsch at web dot de>

pkgname=koma-script
pkgver=3.09a
pkgrel=1
pkgdesc="A versatile bundle of LaTeX2e document classes and packages"
arch=("any")
url="http://www.ctan.org/tex-archive/macros/latex/contrib/koma-script"
license=('LPPL')
depends=('texlive-latexextra')
install=koma-script.install
makedepends=('unzip')
source=('http://mirrors.ctan.org/macros/latex/contrib/koma-script/komascript.tds.zip')
md5sums=('e6c6fdb7aeb3bee21c63ca99a00b3a38')

build() {
  cd "$srcdir/"
}

package() {
  cd "$srcdir/"

  install -m775 -d "$pkgdir/usr/share/texmf"

  cp -R doc/ tex/ source/ "$pkgdir/usr/share/texmf"
  chmod -R 755 "$pkgdir/usr"
}


