# Maintainer: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=ubee512
pkgver=5.3.1
pkgrel=1
pkgdesc="Emulator of the MicroBee computers"
url="http://freshmeat.net/projects/ubee512"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('libdsk' 'libgl' 'zziplib' 'sdl' 'z80ex')
source=("http://www.microbee-mspp.org.au/repository/content.php?get_action=download&secure_token=43dd3f1c4cb6ced55dc4221a9384dec5&file=%2FProjects%2Fubee512%2Fubee512-5.3.1%2Fubee512-5.3.1.tar.gz")
md5sums=('c27c0ebffdb2b8085075240bbf529c6c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/src"
  sed -i "s_usr/local_usr_g" Makefile
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}/src"
  make DESTDIR="${pkgdir}" install
  install -Dm644 ../doc/GPL/COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 et:
