# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=pymt-git
pkgver=20100502
pkgrel=1
pkgdesc="A Python framework for developing applications utilizing new user interfaces, such as multi-touch."
arch=('any')
url="http://pymt.txzone.net/"
license=('GPL')
depends=('python-pygame' 'python-imaging' 'gstreamer0.10-python' 'python-opengl')
makedepends=('git')
provides=('pymt')
conflicts=('pymt' 'pymt-svn')
replaces=('pymt' 'pymt-svn')

_gitroot="git://github.com/tito/pymt.git"
_gitname="pymt"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  python setup.py install --prefix=/usr --root=$pkgdir || return 1

} 
