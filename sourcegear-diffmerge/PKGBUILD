# Maintainer: Ryan Mitchell <rymitch[at]gmail[dot]com>
pkgname=sourcegear-diffmerge
pkgver=3.3.2
pkgrel=1
pkgdesc="DiffMerge is an application to visually compare and merge files."
arch=('x86_64')
url="http://www.sourcegear.com/diffmerge/"
license=('custom')
depends=('gtk2' 'libpng12')
makedepends=('rpmextract')
source=('http://download-us.sourcegear.com/DiffMerge/3.3.2/diffmerge-3.3.2.1139-1.x86_64.rpm')
md5sums=('2143c1861271b81a9d70b852da32743b')

build() {
  cd "$pkgdir"
  rpmextract.sh ../diffmerge-3.3.2.1139-1.x86_64.rpm
  install -D -m644 "${pkgdir}/usr/share/doc/diffmerge-3.3.2.1139/License.html" "${pkgdir}/usr/share/licenses/${pkgname}/License.html"
}
