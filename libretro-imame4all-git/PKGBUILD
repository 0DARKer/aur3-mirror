# Maintainer: almostalive <almostalive2003 at gmail dot com>

pkgname=libretro-imame4all-git
pkgver=20120608
pkgrel=1
pkgdesc="libretro implementation of imame4all based on MAME 0.37b5."
arch=('i686' 'x86_64')
url="https://github.com/ToadKing/imame4all-libretro"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/ToadKing/imame4all-libretro.git"
_gitname="imame4all-libretro"

build() 
{
   cd $srcdir

   msg "Cloning imame4all-libretro from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   make -f makefile.libretro
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -m755 $srcdir/$_gitname/mame.so $pkgdir/usr/lib/libretro/libretro-imame4all.so
}

