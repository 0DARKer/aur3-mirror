# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-imame4all-git
_gitname=imame4all-libretro
pkgver=2013.04.08_474ff5d
pkgrel=1
pkgdesc="libretro implementation of iMAME4all based on MAME 0.37b5. (Arcade)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/imame4all-libretro"
license=('custom')
makedepends=('git')
LDFLAGS=''
source=('git://github.com/libretro/imame4all-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
   if [ "$CARCH" == "armv6h" ]
    then
     make -f makefile.libretro ARM=1
  else
   if [ "$CARCH" == "arm" ]
    then
     make -f makefile.libretro ARM=1
  else
   make -f makefile.libretro
    fi
   fi
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-imame4all.so
}