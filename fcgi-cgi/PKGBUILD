pkgname=fcgi-cgi
pkgver=20130131
pkgrel=4
pkgdesc="FastCGI application to run cgi applications"
arch=('any')
url="http://cgit.stbuehler.de/gitosis/fcgi-cgi/"
license=('MIT')
source=('git://git.lighttpd.net/fcgi-cgi.git')
md5sums=('SKIP')
makedepends=('libev')

build() {
  cd "$pkgname"

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname"

  make DESTDIR="$pkgdir" install
}
