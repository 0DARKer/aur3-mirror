pkgname=fcgi-cgi
pkgver=20130131
pkgrel=3
pkgdesc="FastCGI application to run cgi applications"
arch=('any')
url="http://cgit.stbuehler.de/gitosis/fcgi-cgi/"
license=('MIT')
source=('git://git.lighttpd.net/fcgi-cgi.git'
        'http://cgit.stbuehler.de/gitosis/fcgi-cgi/snapshot/fcgi-cgi-0.1.3.zip')
md5sums=('SKIP'
         '24ff0f9d165677dd7c0b1eac170cf138')
makedepends=('libev')

build() {
  cd "$pkgname"

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname"

  make DESTDIR="$pkgdir" install
}
