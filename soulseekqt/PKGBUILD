# maintainer: Ner0
# Contributor: said

pkgname=soulseekqt
pkgver=20120510
_pkgver=5-10-2012
pkgrel=1
pkgdesc="A desktop client for the Soulseek peer-to-peer file sharing network"
arch=('i686' 'x86_64')
url="http://www.slsknet.org/"
license=('custom')
source=("http://www.slsknet.org/SoulseekQT/Linux/SoulseekQt-$_pkgver-32bit.tgz"
        $pkgname.desktop
        $pkgname.png)
md5sums=('7a0092d62ce500d70d799892b2d09545'
         '0a2137a47e9ac0b4b57a0d55872d0842'
         '256ec24f7ad2d39ac8da0f1c03d3cafe')

if [ "$CARCH" == 'i686' ]; then
   depends=('gcc-libs' 'qt' 'zlib')
elif [ "$CARCH" == 'x86_64' ]; then
   depends=('lib32-gcc-libs' 'lib32-qt' 'lib32-zlib')
fi

package() {
# install -Dm755 "$srcdir/SoulseekQt-$_pkgver-32bit" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 "$srcdir/SoulseekQt-5-11-2012-32bit" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "$srcdir/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm644 "$srcdir/$pkgname.png" "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
