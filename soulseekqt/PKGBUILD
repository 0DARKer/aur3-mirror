# Maintainer: Ner0
# Contributor: said

pkgname=soulseekqt
pkgver=20120915
_pkgver=9-15-2012
[[ "$CARCH" == 'x86_64' ]] && _pkgver=$_pkgver-64bit
pkgrel=1
pkgdesc="A desktop client for the Soulseek peer-to-peer file sharing network"
arch=('i686' 'x86_64')
url="http://www.soulseekqt.net/news/"
license=('custom')
depends=('gcc-libs' 'qt' 'zlib')
source=("http://www.slsknet.org/SoulseekQT/Linux/SoulseekQt-$_pkgver.tgz"
        $pkgname.desktop
        $pkgname.png)
md5sums=('9352791778baf326bde0be6a13b16212'
         '0a2137a47e9ac0b4b57a0d55872d0842'
         '256ec24f7ad2d39ac8da0f1c03d3cafe')
[[ "$CARCH" == 'x86_64' ]] && md5sums[0]='91d348b8ddb9204928562afc8fe40ede'

package() {
  install -Dm755 "$srcdir/SoulseekQt-$_pkgver" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "$srcdir/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm644 "$srcdir/$pkgname.png" "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
