# Contributor: Joe Davison <joe.davison@ntlworld.com>

pkgname=gogdownloader
pkgver=1.0
pkgrel=1
arch=('any')
pkgdesc="Logs into your GOG.com account, lists your games and downloads them along with bonus content. "
depends=(bc aria2)
license=(LGPL)
url="http://www.gog.com/en/forum/general/a_linux_downloader/page1"
source=(http://xenon1170.com/phocadownload/GoGDownloader.sh.tar.gz)
md5sums=('26d7a6661946dbee3bf037d2bade0938')

build()
{
  cd $srcdir
  mv GoGDownloader.sh gogdownloader

  mkdir -p $pkgdir/usr/bin 

  mv gogdownloader $pkgdir/usr/bin/
  chmod u+x $pkgdir/usr/bin/gogdownloader

}
