# Maintainer: Ben Webb <bjwebb67 at googlemail dot com>
pkgname=xulrunner-1.9-bin
pkgver=1.9.3
pkgrel=2
pkgdesc="Mozilla's application framework."
arch=('i686')
url="https://developer.mozilla.org/en/XULRunner_1.9.2_Release_Notes"
license=('GPL' 'LGPL' 'MPL')
depends=()
source=(http://releases.mozilla.org/pub/mozilla.org/xulrunner/releases/1.9.2.17/runtimes/xulrunner-1.9.2.17.en-US.linux-i686.tar.bz2)
md5sums=('1ff09893c6a6aafeaf4f49527f4bf6a9')

build() {
    true
}

package() {
    mkdir -p "$pkgdir/opt" "$pkgdir/usr/bin"
    cp -r "$srcdir/xulrunner" "$pkgdir/opt"
    ln -s "$pkgdir/opt/xulrunner/xulrunner" "$pkgdir/usr/bin/xulrunner-1.9"
}
