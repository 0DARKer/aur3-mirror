# Contributor: mpie <michael.kyne-phillips1@ntlworld.com>

pkgname=tendrils
pkgver=20040818
pkgrel=3
pkgdesc="a rpg game where the combat sequences are played out ddr stylee!!"
url="http://members.cox.net/swt2/Tendrils/"
depends=('python' 'python-pygame' )
makedepends=
install=tendrils.install
source=(http://bioinfo2.ucsd.edu/Tendrils.$pkgver.zip)
md5sums=('fcb8eb5acaa362f3dd55852a02d8de73')






build() {

mkdir -p $startdir/pkg/usr/share/tendrils
mkdir -p $startdir/pkg/usr/bin
cd $startdir/src/dist
sed -i -e"s:WHERE_IS_TENDRILS=~/Tendrils:WHERE_IS_TENDRILS=/usr/share/tendrils:g" $startdir/src/dist/tendrils
cp $startdir/src/dist/tendrils $startdir/pkg/usr/bin
chmod a+x $startdir/pkg/usr/bin/tendrils
cp -a $startdir/src/dist/* $startdir/pkg/usr/share/tendrils
}
