#Conributor: twa022 <twa022 at gmail dot com>

pkgname=fusepy
pkgdesc="Python module that provides a simple interface to FUSE"
pkgver=57
pkgrel=1
arch=('any')
url="http://code.google.com/p/fusepy/"
license=('GPL v3')
depends=('python2>=2.7')
makedepends=('svn')

_svntrunk=http://fusepy.googlecode.com/svn/trunk/
_svnmod=fusepy-read-only

build() {
	
	cd $srcdir
	if [ -d $_svnmod/.svn ]; then
		( cd $_svnmod && svn up )
	else
		svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or sever timeout"
	msg "Starting make..."

	install -D -m755 $_svnmod/fuse.py $pkgdir/usr/lib/python2.7/site-packages/fusepy.py
} 
