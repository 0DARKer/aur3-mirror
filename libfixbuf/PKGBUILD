# Maintainer Jipuf <jipuf@gmx.fr>

pkgname="libfixbuf"
pkgver="0.4.1"
pkgrel=2
pkgdesc="IPFIX Message Format Implementation"
arch=("i686" "x86_64")
url='http://aircert.sourceforge.net/fixbuf'
license=('GPL')
depends=('glib2>=2.6.4')
source=("http://downloads.sourceforge.net/sourceforge/aircert/$pkgname-$pkgver.tar.gz")
md5sums=('2180d0edc1133d9cf46eed3d2a9353bc')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
