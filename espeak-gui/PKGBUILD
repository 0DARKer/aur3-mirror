# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=espeak-gui
pkgver=0.2
pkgrel=3
pkgdesc="GUI for eSpeak"
arch=('i686' 'x86_64')
url="https://launchpad.net/espeak-gui"
license=('GPL3')
depends=('gconf' 'gtk2' 'pygobject' 'pygtk' 'python-distutils-extra' 'python-espeak')
source=(http://launchpad.net/espeak-gui/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('13411e05d7a2207ff3fdc6cab294e052')

build() {
  cd $srcdir/$pkgname-$pkgver

   #python2 fix
   sed -i 's_#! /usr/bin/env python_#!/usr/bin/env python2_' setup.py
   sed -i 's_#! /usr/bin/env python_#!/usr/bin/env python2_' espeak-gui

   python2 setup.py build
   python2 setup.py install --root $pkgdir
}
