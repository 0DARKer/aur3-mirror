# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=atlast
pkgver=1.1
pkgrel=1
pkgdesc="Autodesk Threaded Language Application System Toolkit"
arch=('i686')
url="http://www.fourmilab.ch/nav/topics/components.html"
license=('custom:"public domain"')
makedepends=('gcc3')
source=("http://www.fourmilab.ch/atlast/$pkgname-$pkgver.tar.gz" gcc3.patch)
md5sums=('18ee5d3b8e23d6251dfe7799f301384a' 'e01428375b96f94d200f4ab50db1460a')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch Makefile ../gcc3.patch
  make || return 1
  make DESTDIR=$startdir/pkg/usr install
  install -D $startdir/src/$pkgname-$pkgver/COPYING $startdir/pkg/usr/share/licenses/atlast/COPYING
}
