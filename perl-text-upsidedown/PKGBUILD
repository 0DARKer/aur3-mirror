pkgrel=1
pkgdesc="flip text upside-down using Unicode "
arch=('i686' 'x86_64')
url="http://search.cpan.org/~MARCEL/Text-UpsideDown"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
makedepends=('perl-universal-require')
