# Maintainer: Abe Hager <abe.hager@gmail.com>
pkgname=openpilot_gcs-bin
pkgver=RELEASE.14.06.01
pkgrel=1
pkgdesc="OpenPilot GCS (ground control station), binary version."
arch=('i686' 'x86_64')
url="http://www.openpilot.org/"
downloadurl="http://wiki.openpilot.org/download/attachments/2457605/"
license=('GPL')
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=('openpilot-git')
changelog=
if [ $CARCH == 'i686' ]; then
    source=($downloadurl'OpenPilot-RELEASE-14.06.01-i386.deb')
    md5sums=('1651775acfad28d0193a621786886b26')
elif [ $CARCH == 'x86_64' ]; then
    source=($downloadurl'OpenPilot-RELEASE-14.06.01-amd64.deb')
    md5sums=('7ba6dab0d3d718e1e84ecfa0f0a115e1')
fi
noextract=()

prepare() {
    cd $srcdir
    tar -xjf data.tar.bz2
}

package() {
    cp -r "$srcdir/etc" "$pkgdir"
    cp -r "$srcdir/lib" "$pkgdir"
    cp -r "$srcdir/usr" "$pkgdir"
}
