# Maintainer: aksr <aksr at t-com dot me>
pkgname=neateqn-git
pkgver=0.r60.bf5dcdf
pkgrel=4
epoch=
pkgdesc="An eqn preprocessor for neatroff."
arch=('i686' 'x86_64')
url="http://litcave.rudi.ir/"
license=('custom:BSD')
groups=()
depends=('neatroff-git')
makedepends=('git')
optdepends=()
checkdepends=()
provides=('neateqn')
conflicts=('neateqn')
replaces=()
backup=()
options=()
changelog=
install=
source=($pkgname::git://repo.or.cz/neateqn.git)
noextract=()
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  make all
}

package() {
  cd "$srcdir/$pkgname"
  install -Dm755 eqn $pkgdir/usr/bin/neateqn
}

