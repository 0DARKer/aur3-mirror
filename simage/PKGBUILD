# Contributor: marcus fritzsch <fritschy@googlemail.com>

pkgname=simage
pkgver=1.6.1
pkgrel=1
pkgdesc="simage is a library capable of loading, manipulating and saving images, creating and saving movies (AVI and mpeg), and loading audio."
url="http://www.coin3d.org/"
license="GPL"
depends=('gcc' 'libx11' 'libtiff' 'libsndfile' 'libpng' 'libvorbis' 'libungif' 'libsm')
makedepends=('gcc' 'doxygen')
conflicts=()
provides=()
replaces=()
backup=()
install=
source=("http://ftp.coin3d.org/coin/src/all/simage-1.6.1.tar.gz")
md5sums=('d4c836ab282388392a65cd0650f224c5')

build() {
  cd $startdir/src

  mkdir build
  cd build
  ../simage-$pkgver/configure --prefix=/usr --enable-optimization \
    --enable-threadsafe --enable-html --enable-man --enable-exceptions \
    --disable-debug --with-targa --with-rgb --with-pic --with-xwd --with-eps
  make DESTDIR=$startdir/pkg install || return 1
  rm -f $startdir/pkg/usr/lib/libsimage.la
}
