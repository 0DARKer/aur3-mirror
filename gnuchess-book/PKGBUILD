# Contributor: Ermanno <erm67@yahoo.it>
pkgname=gnuchess-book
pkgver=1.01
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Openings book for gnuchess"
url="http://www.gnu.org/software/chess"
license="GPL"
depends=('gnuchess' )
source=("http://ftp.gnu.org/pub/gnu/chess/book_$pkgver.pgn.gz")
md5sums=('1be508d7a38a8c9a7d599d0cd92b24a6')

build() {
	cd $srcdir
        echo -e "book add book_$pkgver.pgn"$'\n'"quit" | /usr/bin/gnuchess \
		|| die 1
        mkdir -p $pkgdir/usr/share/games/gnuchess/
        install -m644 $srcdir/book.dat $pkgdir/usr/share/games/gnuchess/

} 
