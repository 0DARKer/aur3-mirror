# Contributor: DigitalPathogen <aur@digitalpathogen.co.uk>
# Contributor: daronin

pkgname=burpsuite
pkgver=1.3.03
pkgrel=2
pkgdesc="Burp Suite is an integrated platform for attacking web applications (free edition)."
url="http://portswigger.net/suite/"
depends=('java-runtime')
arch=('any')
license=('custom')
source=(http://portswigger.net/burp/${pkgname}_v${pkgver}.zip)
md5sums=('2bf129c6421cce6da1c0c6a923c037bb')

build() {
  mkdir -p ${pkgdir}/usr/{bin,share/${pkgname}}
  cd ${srcdir}/${pkgname}\_v${pkgver}/
  install -m644 ${pkgname}\_v${pkgver}.jar ${pkgdir}/usr/share/${pkgname}/${pkgname}.jar
  install -m644 terms\ and\ conditions.txt ${pkgdir}/usr/share/${pkgname}/
  
  #create startup for burpsuite
  echo "#!/bin/sh" > $pkgdir/usr/bin/${pkgname}
  echo "\$JAVA_HOME/bin/java" -jar '/usr/share/burpsuite/burpsuite.jar' >> ${pkgdir}/usr/bin/${pkgname} 
  chmod +x ${pkgdir}/usr/bin/${pkgname}
}

# vim:set ts=2 sw=2 et:
