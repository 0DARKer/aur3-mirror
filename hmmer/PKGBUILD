# Contributor: Thomas Dziedzic < gostrc at gmail >

pkgname=hmmer
pkgver=3.0
pkgrel=1
pkgdesc="Profile hidden Markov models (profile HMMs) can be used to do sensitive database searching using statistical descriptions of a sequence family's consensus"
arch=('i686' 'x86_64')
license=('GPL')
url='http://hmmer.janelia.org/'
depends=('glibc')
source=("ftp://selab.janelia.org/pub/software/hmmer3/$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('4cf685f3bc524ba5b5cdaaa070a83588')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr

  make || return 1

  make DESTDIR="$pkgdir" install || return 1
}
