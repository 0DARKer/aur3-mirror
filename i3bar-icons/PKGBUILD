# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Nick Lanham <nick@nick>
pkgname=i3bar-icons
pkgver=4.4
pkgrel=1
pkgdesc="A version of i3bar which can display xbm icons"
url="https://gist.github.com/c392e999741284f38af5"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libxcursor' 'xcb-util-keysyms' 'xcb-util-wm' 'libev' 'yajl' 'startup-notification' 'pango' 'i3-wm=4.4')
makedepends=('git' 'docbook-xsl' 'pkgconfig')
conflicts=()
replaces=()
backup=()
install=i3bar-icons.install
source=('https://gist.github.com/raw/39f825bf8e80b7ed6c5b/b3ba244d67e55511598875082c7f1372cfa1eb78/i3bar-icons.patch'
        'http://i3wm.org/downloads/i3-4.4.tar.bz2')
md5sums=('d5f57b32d11c92dcdf0421c2d0b67e6c'
         'fa2b8aae3d2e10c5ee480bd370366f5b')
build() {
  cd i3-4.4
  patch -Np1 -i ../i3bar-icons.patch || return 1
  cd i3bar
  make
  install -D -m755 i3bar $pkgdir/usr/bin/i3bar-icons
}
