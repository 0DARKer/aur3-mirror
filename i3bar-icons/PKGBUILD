# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Nick Lanham <nick@nick>
pkgname=i3bar-icons
pkgver=4.5
pkgrel=1
pkgdesc="A version of i3bar which can display xbm icons"
url="https://gist.github.com/c392e999741284f38af5"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libxcursor' 'xcb-util-keysyms' 'xcb-util-wm' 'xcb-util-image' 'libev' 'yajl' 'startup-notification' 'pango' 'i3-wm>=4.5')
makedepends=('git' 'docbook-xsl' 'pkgconfig')
conflicts=()
replaces=()
backup=()
install=i3bar-icons.install
source=('https://gist.github.com/nicklan/5169399/raw/4ab43589a3f07a4caa87eb972c11b292ebe18125/i3bar-4.5-icons.patch'
        'http://i3wm.org/downloads/i3-4.5.tar.bz2')
md5sums=('e004455bf10fcc34b56ae8cb280899d2'
         '9eea2f570ec19affa3ec60b5ab411497')
build() {
  cd i3-4.5
  patch -Np1 -i ../i3bar-4.5-icons.patch || return 1
  cd i3bar
  make
  install -D -m755 i3bar $pkgdir/usr/bin/i3bar-icons
}
