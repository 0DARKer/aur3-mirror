# Contributor: graysky <graysky AT archlinux dot us>
# Contributer: alterkacker

pkgname=cacheclean
pkgver=2.1
pkgrel=3
pkgdesc='Cleans up pacman packages.  Users selects how many old versions to keep.'
arch=(any)
license=(GPL)
depends=('python')
source=("https://github.com/graysky2/cacheclean/raw/master/$pkgname-source.tar.xz")
sha256sums=('70acae2709bb5d07ad791333865f3f59efe9de0c4c1e0516aa7421dbfdac83ee')
url=http://wiki.archlinux.org/index.php/CacheClean
install=readme.install

package() {
	cd "$srcdir/$pkgname-source"
	install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
}
