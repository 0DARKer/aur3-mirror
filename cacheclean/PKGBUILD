pkgname=cacheclean
pkgver=1.8
pkgrel=1
pkgdesc='Cleans up pacman packages.  Users selects how many old versions to keep.'
arch=(any)
license=(GPL)
depends=('python')
source=($pkgname)
url=http://wiki.archlinux.org/index.php/CacheClean
install=('readme.install')

build() {
	install -D -m744 $pkgname $pkgdir/usr/bin/$pkgname
}
sha256sums=('a754d6a64a210b5ead0b9fc88f2631f62ef02ba57cc9debb0a7ce778b931302f')
