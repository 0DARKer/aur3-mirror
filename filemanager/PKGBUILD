# Contributor: Wittfella <wittfella@wittfella.com>
pkgname=filemanager
pkgver=1.0
pkgrel=1
pkgdesc="A lightweight file manager"
arch=('i686' 'x86_64')
url="http://www.wittfella.com"
license=('GPL')
depends=('qt')
source=(http://www.wittfella.com/$pkgname-$pkgver.tar.gz)
md5sums=('e17d276825061856ee8d5278b482203c')

build() {
  cd "$startdir/src/$pkgname-$pkgver"

   qmake || return 1
   make || return 1

   install -Dm 755 ${startdir}/src/$pkgname-$pkgver/filemanager ${startdir}/pkg/usr/bin/filemanager

   install -Dm 644 ${startdir}/src/$pkgname-$pkgver/filemanager.desktop ${startdir}/pkg/usr/share/applications/filemanager.desktop

   install -Dm 644 ${startdir}/src/$pkgname-$pkgver/images/filemanager.png ${startdir}/pkg/usr/share/pixmaps/filemanager.png
}

