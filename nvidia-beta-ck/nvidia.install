
_extramods="extramodules-3.1-ck"
kernver="$(cat /lib/modules/${_extramods}/version)"

post_install() {
    depmod -v "${kernver}" > /dev/null 2>&1
}

post_upgrade() {
    depmod -v "${kernver}" > /dev/null 2>&1
    rmmod nvidia || echo 'In order to use the new nvidia module, exit Xserver and unload it manually.'
}

post_remove() {
    depmod -v "${kernver}" > /dev/null 2>&1	 
}
