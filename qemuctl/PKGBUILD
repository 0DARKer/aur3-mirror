# Author: Fackamato <mathias.buren.at.gmail.com>
pkgname=qemuctl
pkgver=0.2
pkgrel=1
pkgdesc="This is a controlling GUI for the emulator qemu. It is not for configuring devices or starting qemu, no it's for changing media, reset the vm, and so on at runtime." 
url="http://sourceforge.net/projects/qemuctl/" 
license="other" 
arch=(i686 x86_64)
depends=('qemu') 
source=(http://mesh.dl.sourceforge.net/sourceforge/$pkgname/$pkgname$pkgver.tar.gz) 
md5sums=('26cad0b969fd83794940fd8ba68a1eb6')

build() { 
	tar xf $pkgname$pkgver.tar.gz
	cd $startdir/src/$pkgname$pkgver
	make
	mkdir -p $startdir/pkg/usr/bin
	install -m 755 $pkgname $startdir/pkg/usr/bin/
}
