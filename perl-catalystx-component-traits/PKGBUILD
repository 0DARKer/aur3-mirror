pkgname='perl-catalystx-component-traits'
pkgver='0.14'
pkgrel='1'
pkgdesc="Automatic Trait Loading and Resolution for"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-catalyst-runtime>=5.80005' 'perl-list-moreutils' 'perl-moosex-traits-pluggable>=0.08' 'perl-namespace-autoclean')
url='http://search.cpan.org/dist/CatalystX-Component-Traits'
source=('http://search.cpan.org/CPAN/authors/id/R/RK/RKITOVER/CatalystX-Component-Traits-0.14.tar.gz')
md5sums=('ebf80365de2e4557eef14f4cec0c3195')

build() {
  _DISTDIR="${srcdir}/CatalystX-Component-Traits-0.14"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -delete
  find "$pkgdir" -name perllocal.pod -delete
}
