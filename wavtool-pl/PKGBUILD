# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=wavtool-pl
pkgver=20140304
pkgrel=1
pkgdesc="A drop-in replacement for wavtool inside UTAU"
arch=('i686' 'x86_64')
url="http://sourceforge.jp/projects/wavtool-pl/"
license=('GPL3')
depends=('libsndfile')
source=("http://jaist.dl.sourceforge.jp/wavtool-pl/60756/wavtool-pl-win32-${pkgver}.7z")

build() {
	cd "${srcdir}/wavtool-pl"
	autoreconf -vfi
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/wavtool-pl"
	make DESTDIR="${pkgdir}" install
}

md5sums=('0884583fc1aa3b28ac200822c8032430')
