# Original contributor: Henri HÃ¤kkinenv <henuxd@gmail.com>

pkgname=joomla
pkgver=1.6.3
pkgrel=1
pkgdesc='A PHP-based content management platform'
arch=('any')
url='http://www.joomla.org/'
license=('GPL')
depends=('php>=4.3.10' 'php-apache>=4.3.10' 'mysql' 'apache')
makedepends=('unzip')
install="${pkgname}.install"
source=("http://joomlacode.org/gf/download/frsrelease/14659/64120/Joomla_1.6.3-Stable-Full_Package.zip")
md5sums=('dea77e62034f3160a76c0c5d85775813')
noextract=('Joomla_1.6.3-Stable-Full_Package.zip')

package() {
  install -d ${pkgdir}/srv/http/joomla
  echo "Unzipping files"
  unzip -q Joomla_1.6.3-Stable-Full_Package.zip -d ${pkgdir}/srv/http/joomla

  # fix permissions (probably needs to get included upstream)
  find ${pkgdir}/srv/http/joomla -type f -exec chmod 0664 {} \; 
  find ${pkgdir}/srv/http/joomla -type d -exec chmod 0775 {} \; 
}

