pkgname=joomla
pkgver=3.1.0
pkgrel=3
pkgdesc="A PHP-based content management platform"
arch=(any)
url=http://www.joomla.org/
license=(GPL)
depends=(php)
source=("http://joomlacode.org/gf/download/frsrelease/17965/78412/Joomla_${pkgver}-Stable-Full_Package.tar.bz2")
sha512sums=('c5e2e35d4f9efa815fcc4815f309ab633025dd64e0350c9d65e7e6edd05921396c850dc6a2b80cda7fc73c7c001ffc8443b90c4e45c01df92c9e41d0cfbd051b')
install=joomla.install

package()
{
  rm "${srcdir}/Joomla_${pkgver}-Stable-Full_Package.tar.bz2"
  mkdir -p "${pkgdir}/usr/share/webapps/joomla"
  cp -rv "${srcdir}/." "${pkgdir}/usr/share/webapps/joomla/"
  find "${pkgdir}/usr/share/webapps/joomla" -type f -exec chmod 0664 {} \;
  find "${pkgdir}/usr/share/webapps/joomla" -type d -exec chmod 0775 {} \;
  chown -R root:root "${pkgdir}/usr/share/webapps/joomla"
}

