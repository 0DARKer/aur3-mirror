pkgname=joomla
pkgver=3.1.1
pkgrel=4
pkgdesc="A PHP-based content management platform"
arch=(any)
url=http://www.joomla.org/
_watch=('http://www.joomla.org/download.html',' ([\d.]*) Full Package')
license=(GPL)
depends=(php)
source=("http://joomlacode.org/gf/download/frsrelease/18323/80368/Joomla_${pkgver}-Stable-Full_Package.zip")
sha512sums=('4f668f2ec48ee6ffe4c58fc7acf940265540a6cbaa3f1b2de55923c27bfaa4f56290c6666bb963df31c52e67929b8b6e43aacda1731b2c3d3609c8a314b1fcf6')
install=joomla.install

package()
{
  rm "${srcdir}/Joomla_${pkgver}-Stable-Full_Package.zip"
  mkdir -p "${pkgdir}/usr/share/webapps/joomla"
  cp -rv "${srcdir}/." "${pkgdir}/usr/share/webapps/joomla/"
  find "${pkgdir}/usr/share/webapps/joomla" -type f -exec chmod 0664 {} \;
  find "${pkgdir}/usr/share/webapps/joomla" -type d -exec chmod 0775 {} \;
  chown -R root:root "${pkgdir}/usr/share/webapps/joomla"
}

