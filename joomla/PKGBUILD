pkgname=joomla
pkgver=3.3.0
pkgrel=1
pkgdesc="A PHP-based content management platform"
arch=(any)
url=http://www.joomla.org/
_watch=('http://www.joomla.org/download.html',' ([\d.]*) Full Package')
license=(GPL)
depends=(php)
source=("http://joomlacode.org/gf/download/frsrelease/19393/158832/Joomla_3.3.0-Stable-Full_Package.zip")
sha512sums=('3aadee5c69914bbfe018e278dff0fde6458f1da55ffac9eb34f5402b1e489670056d235c3d8f0f8ad7f187053d3a4e4f3d3355970faf2dd09b594c215dd593fa')
install=joomla.install

package()
{
  rm "Joomla_3.3.0-Stable-Full_Package.zip"
  mkdir -p "${pkgdir}/usr/share/webapps"
  cp -r "${srcdir}" "${pkgdir}/usr/share/webapps/joomla"
  find "${pkgdir}/usr/share/webapps/joomla" -type f -exec chmod 0664 {} \;
  find "${pkgdir}/usr/share/webapps/joomla" -type d -exec chmod 0775 {} \;
  chown -R root:root "${pkgdir}/usr/share/webapps/joomla"
  install -D "LICENSE.txt" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

