pkgname=joomla
pkgver=1.7.0
pkgrel=1
pkgdesc="A PHP-based content management platform"
arch=(any)
url=http://www.joomla.org/
license=(GPL)
depends=(apache mysql php php-apache)
install=joomla.install

package()
{
  rm Joomla_.*-Stable-Full_Package.zip 2>/dev/null || true
  _url=$(wget -qO - http://www.joomla.org/download.html | grep -o http://joomlacode.org/gf/download/frsrelease/.*/Joomla_.....-Stable-Full_Package.zip)
  wget ${_url}
  mkdir -p "${pkgdir}"/srv/http/joomla
  bsdtar -xf $(basename ${_url}) -C "${pkgdir}"/srv/http/joomla
  find "${pkgdir}"/srv/http/joomla -type f -exec chmod 0664 {} \; 
  find "${pkgdir}"/srv/http/joomla -type d -exec chmod 0775 {} \; 
}

