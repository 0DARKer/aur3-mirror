# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=kagiru
pkgver=0.25
pkgrel=2
pkgdesc="A simple Java based sudoku game."
arch=('i686')
url="http://kagiru.sourceforge.net"
license=('GPL')
depends=('jre')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver-self-executable.jar)
md5sums=('7108728a870488036282b5927fc2ec39')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/usr/{bin,share/$pkgname}
	mv $pkgname-$pkgver-self-executable.jar $startdir/pkg/usr/share/$pkgname/$pkgname.jar
	echo -e "#!/bin/bash\n\ncd /usr/share/$pkgname/\n/opt/java/jre/bin/java -jar $pkgname.jar" >$pkgdir/usr/bin/$pkgname
	chmod 755 $pkgdir/usr/bin/$pkgname
	install -D -m644 $startdir/$pkgname.desktop $startdir/pkg/usr/share/applications/$pkgname.desktop
}
