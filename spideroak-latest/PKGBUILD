# Maintainer: ddffnn <ddffnn@gmail.com>
# Contributor: sfabius <sfabius@gmail.com>

pkgname=spideroak-latest
pkgver=3.7.9801
pkgrel=1
pkgdesc="Client for multiplatform file backup and syncronization service. Beta versions included."
arch=('i686' 'x86_64')
url="https://spideroak.com/"
license=('custom')
depends=('openssl' 'dbus')
optdepends=('qt: if you want to run the GUI')
makedepends=()
conflicts=('spideroak')
replaces=()
options=(!strip)
changelog=changelog
_source_arch="i386"
[ "$CARCH" = "x86_64" ] && _source_arch="x86_64"  
source=("spideroak_${pkgver}_${_source_arch}.deb::https://spideroak.com/directdownload?platform=ubuntulucid&arch=${_source_arch}" 'LICENSE')

# I haven't seen makepkg extract deb files, but just to be sure 
noextract=("spideroak_${pkgver}_${_source_arch}.deb")

md5sums=('80cf26bda0228efecec0f9bba3995b73' '53d58e8dd9d8e5fb23919f655b164e90')
[ "$CARCH" = "x86_64" ] && md5sums=('0a9b7068c8e0fbe05cc8eb187f571e5c' '53d58e8dd9d8e5fb23919f655b164e90')

build() {
  cd $srcdir/
  bsdtar -xf spideroak_${pkgver}_${_source_arch}.deb data.tar.gz
  bsdtar -xf data.tar.gz
  rm data.tar.gz
  rm -rf etc/apt
  install -Dm644 LICENSE usr/share/licenses/spideroak
  mv {usr,etc} ${pkgdir}
}
