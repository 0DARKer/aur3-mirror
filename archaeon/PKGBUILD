pkgname=archaeon
pkgver=0.2
pkgrel=3
pkgdesc="Small script to build packages from the ABS."
arch=('i686' 'x86_64')
license=('GPL2')
depends=('rsync')
url=('http://example.com/')

source=('archaeon')
md5sums=('2c44037cb705d898777c06cf9df69209')

build() {
  cd $srcdir
  mkdir $pkgdir/usr $pkgdir/usr/bin
  cp archaeon $pkgdir/usr/bin
  chmod a+x $pkgdir/usr/bin/archaeon
}
