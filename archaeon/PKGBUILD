# Maintainer: Vithon <ratm@archlinux.us>

pkgname=archaeon
pkgver=0.2
pkgrel=2
pkgdesc="Small script to build packages from the ABS."
arch=('i686' 'x86_64')
license=('GPL2')
depends=('rsync')
url=('http://example.com/')

source=('archaeon')
md5sums=('ca5b54c32a66072b8b6cde93182e17b0')

build() {
	cd $srcdir
	mkdir $pkgdir/usr $pkgdir/usr/bin
	cp archaeon $pkgdir/usr/bin
	chmod a+x $pkgdir/usr/bin/archaeon
	return 0
}
