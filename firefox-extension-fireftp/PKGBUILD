# Maintainer: Tianjiao Yin <ytj000+aur@gmail.com>

_plugin_name=fireftp
_plugin_version=2.0.14
_plugin_id=684
pkgdesc="A free, secure, cross-platform FTP/SFTP client for Mozilla Firefox."
license=('MPL')

pkgname=firefox-extension-$_plugin_name
pkgver=$_plugin_version
pkgrel=1
arch=('any')
url="https://addons.mozilla.org/firefox/addon/$_plugin_id"
depends=("firefox")
source=("https://addons.mozilla.org/firefox/downloads/file/206432/fireftp-2.0.14-sm+fx.xpi")

build() {
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  install -d $dstdir
  rm *.xpi
  mv * $dstdir
}
md5sums=('561464c891bdcb9b4ef0093138bee61f')
