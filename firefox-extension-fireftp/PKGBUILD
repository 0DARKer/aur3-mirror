pkgname=firefox-extension-fireftp
pkgver=2.0.21
pkgrel=1
arch=('any')
pkgdesc="A free, secure, cross-platform FTP/SFTP client for Mozilla Firefox."
license=('MPL')
url="https://addons.mozilla.org/firefox/addon/fireftp"
depends=("firefox")
source=("https://addons.cdn.mozilla.net/user-media/addons/684/fireftp-2.0.21-fx+sm.xpi")

package() {
  cd $srcdir
# [ $NOEXTRACT -eq 1 ] || unzip $pkgname-$pkgver-latest.xpi
  local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf)
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  [ -n ${emid} ] || return 1
  install -d $dstdir
  sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>32.*</em:maxVersion>#' install.rdf
  cp -R * $dstdir
  rm $dstdir/*.xpi
  find $pkgdir -type d -exec chmod 0755 {} \;
  find $pkgdir -type f -exec chmod 0644 {} \;

}

sha256sums=('f409334cd726dc68995bc6af95016b88f56e1aac207fab048daac2c2d7a252bb')
