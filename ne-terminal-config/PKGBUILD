# Maintainer: Alessio Sergi <asergi [at] archlinux [dot] us>

pkgname=ne-terminal-config
pkgver=1.0
pkgrel=5
pkgdesc="A configuration GUI for nautilus-elementary terminal"
arch=('any')
url="https://launchpad.net/nautilus-terminal"
license=('GPL3')
depends=('nautilus-elementary-bzr' 'python2')
makedepends=('gettext')
source=(http://download.flogisoft.com/files/Software/nautilus-terminal/${pkgname}_${pkgver}.tar.gz)
md5sums=('9c5db6197a8341748be79b942f37d611')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  sed -i 's_#!/usr/bin/python_#!/usr/bin/python2_' code/${pkgname}.py
  ./install.sh -p ${pkgdir}
}

