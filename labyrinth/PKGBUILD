# Maintainer: M Rawash <mrawash@gmail.com>

pkgname=labyrinth
pkgver=0.4.1
pkgrel=3
pkgdesc="A lightweight mind-mapping tool with support for image import and drawing"
arch=('any')
url="http://code.google.com/p/labyrinth/"
license=('GPL')
depends=('gnome-python' 'gnome-desktop' 'python-numeric')
makedepends=('gnome-common' 'intltool')
install=$pkgname.install
source=(http://labyrinth.googlecode.com/files/${pkgname}_${pkgver}.tar.gz)
md5sums=('74a9f9ae7710ef99ab2597c9d4eb24b1')

build() {
  cd $startdir/src/$pkgname-0.4.0

  #exclude BR translation because of an encoding error
  sed -i 's/pt_BR//' po/LINGUAS

  #use python2
  sed -i 's/python/python2/' src/labyrinth.py

  ./autogen.sh --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install
}
