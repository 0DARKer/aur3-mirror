# Contributor: MCMic <come.bernigaud@laposte.net>

pkgname=valyria-tear
pkgver=0.5.0
pkgrel=1
pkgdesc="Valyria Tear is an attempt at creating a free (as meant in the Gnu Public License) J-RPG game."
arch=('any')
url="http://valyriatear.blogspot.fr"
license=('GPL')
depends=('sdl' 'sdl_ttf' 'openal' 'libogg' 'libvorbis' 'glu' 'libpng' 'libjpeg' 'gettext' 'lua>=5.1')
makedepends=('make' 'cmake')
conflicts=()
source=("https://github.com/Bertram25/ValyriaTear/archive/0.5.0/valyriatear-$pkgver.tar.gz")
md5sums=('583ffc2a1c22566b02855cfd5917e076')

build() {
    cd $srcdir/ValyriaTear-$pkgver
	cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make install DESTDIR=$pkgdir
}
