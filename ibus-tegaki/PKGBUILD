pkgname=ibus-tegaki
pkgver=0.3.1
pkgrel=2
pkgdesc="iBus integration for Tegaki handwriting recognition tool"
arch=('i686' 'x86_64')
url="http://www.tegaki.org/"
license=('GPL2')
depends=('python>=2.4' 'ibus>=1.2' 'tegaki-pygtk>=0.3' 'tegaki-recognize>=0.3')
makedepends=('python')
source=("http://www.tegaki.org/releases/0.3.1/$pkgname-$pkgver.tar.gz")
md5sums=('8f14bc60bee12c47e999df82f1256685')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	
	python setup.py build || return 1
	python setup.py install --prefix=$pkgdir/usr || return 1
}
