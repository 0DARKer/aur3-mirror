# Maintainer: Ben Reul <breul99<AT>NOSPAM.gmail.com>
pkgname=catimg-git
pkgrel=2
pkgver=1
pkgdesc="Cat for images."
url="http://posva.net/shell/retro/bash/2013/05/27/catimg/"
license=('unknown')
arch=('i686' 'x86_64')
depends=('imagemagick')
makedepends=('git')
source=("git://github.com/posva/catimg.git")
sha256sums=('SKIP')
package() {
  _destdir="opt/catimg"	
  mkdir -p "${pkgdir}/${_destdir}"
  sed -i 's/COLOR_FILE=.*/COLOR_FILE=\/opt\/catimg\/colors.png/' ${srcdir}/catimg/catimg
  cp "${srcdir}/catimg/catimg" "${pkgdir}/${_destdir}"
  chmod +x "${pkgdir}/${_destdir}/catimg"
  cp "${srcdir}/catimg/colors.png" "${pkgdir}/${_destdir}"
  # Link binarys to /usr/bin/
  mkdir -p "${pkgdir}/usr/bin"
  ln -s /${_destdir}/catimg "${pkgdir}/usr/bin/catimg"
}
