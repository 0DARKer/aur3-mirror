# Maintainer: demian <mikar ατ gmx δοτ de>
pkgname=demibot
pkgver=0.1
pkgrel=1
pkgdesc="A modular IRC bot"
arch=("any")
url="https://github.com/mikar/demibot"
license=("MIT")
depends=("twisted" "python2-docopt" "python2-requests" "python2-beautifulsoup4")
install=demibot.install

source=("https://github.com/mikar/${pkgname}/archive/master.tar.gz")
sha256sums=('7a3c83ed6a8c5ba94e9beb4adb3200edb900d798c11e17e4aef1c9ddf8b8c7f4')

package() {
    cd "$srcdir"/${pkgname}-master

    python2 setup.py install --root="${pkgdir}"
}
