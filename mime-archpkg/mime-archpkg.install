post_install() {
  update-mime-database /usr/share/mime &> /dev/null
  for i in hicolor gnome Tango oxygen nuoveXT2 Faenza; do
    if [ -f /usr/share/icons/$i/icon-theme.cache ]; then
      xdg-icon-resource forceupdate --theme $i
    fi
  done
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install 
}
