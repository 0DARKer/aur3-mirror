# Contributor: daniel g. siegel <dgsiegel@gmail.com>
pkgname=macbook-tools
pkgver=20070102
pkgrel=1
pkgdesc="Some apps to enhance your macbook: backlight, keyboard light.."
url="http://mactel-linux.org"
arch=(i686 x86_64)
license="GPL"
depends=()
makedepends=('subversion')
source=()
md5sums=()

_svnroot="https://svn.sourceforge.net:/svnroot/mactel-linux/trunk/tools"
_svnmod="macbook-tools"

build() {
  cd $startdir/src/
  msg "Connecting SVN server...."
  svn co --config-dir ./ -r $_svnroot $_svnmod
  cd $_svnmod
  msg "SVN checkout done or server timeout"
  msg "Starting build..."
  
  make -C backlight || exit 1
  make -C temperature || exit 1
  make -C hdaps-gl || exit 1

  install -D -m755 keyboard_brigthness $startdir/pkg/usr/bin/keyboard_brigthness
  install -D -m755 backlight/backlight $startdir/pkg/usr/bin/backlight
  install -D -m755 temperature/coretemp $startdir/pkg/usr/bin/coretemp
  install -D -m755 hdaps-gl/hdaps-gl $startdir/pkg/usr/bin/hdaps-gl

}


