pkgname='perl-parent'
pkgver='0.223'
pkgrel='2'
pkgdesc="Establish an ISA relationship with base classes at compile time"
arch=('any')
url='http://search.cpan.org/dist/parent'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/C/CO/CORION/parent-0.223.tar.gz')
md5sums=('e89c37813e8497f1d8bbf223ab18a02d')

build() {
  DIST_DIR="${srcdir}/parent-0.223"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

