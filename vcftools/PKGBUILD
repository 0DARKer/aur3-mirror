pkgname=vcftools
pkgver=0.1.12
pkgrel=1
epoch=
pkgdesc="VCFtools is a software suite that implements various utilities for processing VCF files"
arch=('x86_64' 'i686')
url="http://vcftools.sourceforge.net"
license=('GPL')
groups=()
depends=('perl>=5')
makedepends=()
checkdepends=()
optdepends=('tabix')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://downloads.sourceforge.net/project/${pkgname}/${pkgname}_${pkgver}.tar.gz")
noextract=()
md5sums=("ce0126ceb2a4b9ed76592adb6fbae526") #generate with 'makepkg -g'


build() {
  cd "$srcdir/${pkgname}_$pkgver"
  make
}

# check() {
#   cd "$srcdir/$pkgname-$pkgver"
# }

package() {
  cd "$srcdir/${pkgname}_$pkgver"
  PREFIX="$pkgdir/usr/" make  install
}

