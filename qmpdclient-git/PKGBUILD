pkgname=qmpdclient-git
pkgver=20100326
pkgrel=2
pkgdesc="A Qt4 client for MPD"
url="http://bitcheese.net/wiki/QMPDClient"
license=('GPL')
arch=('i686' 'x86_64')
depends=('qt')
makedepends=('git')
conflicts=('qmpdclient')
provides=('qmpdclient')

_gitroot='git://git.bitcheese.net/qmpdclient'
_gitname='qmpdclient'

build() {

      cd $srcdir

      msg "Connecting to github.com GIT server...."
  if [ -d ${srcdir}/$_gitname ] ; then
      cd $_gitname && git pull origin
      msg "The local files are updated."
  else
      git clone $_gitroot
  fi
      msg "GIT checkout done or server timeout"

      msg "Starting make..."

  if [ -d ${srcdir}/${_gitname}-build ]; then
      rm -r ${srcdir}/${_gitname}-build
  fi
      cp -r ${srcdir}/$_gitname ${srcdir}/${_gitname}-build
      cd ${srcdir}/${_gitname}-build

   # uncomment that if you want use Libre.fm
#  sed -ie "s%http://post.audioscrobbler.com/%http://turtle.libre.fm/%g" src/lastfmsubmitter.cpp || return 1

  cmake -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1

}
