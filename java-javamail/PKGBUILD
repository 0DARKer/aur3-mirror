pkgname=java-javamail
_dirname=javamail
pkgver=1.5.1
pkgrel=3
pkgdesc="Oracle's implementation of JSR-919."
arch=(any)
url='https://java.net/projects/javamail/pages/Home'
license=('GPL2')
depends=('java-runtime')
source=("http://java.net/projects/javamail/downloads/download/javax.mail.jar")
noextract=('javax.mail.jar')
md5sums=('7568b973bb2e3cc6f150ad908ddf349f')

package() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/share/java/$_dirname"
    install -Dm644 javax.mail.jar "$pkgdir/usr/share/java/$_dirname/"
}
