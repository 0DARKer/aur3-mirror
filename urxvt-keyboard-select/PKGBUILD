# Maintainer: Bert Muennich <muennich at informatik.hu-berlin.de>

pkgname="urxvt-keyboard-select"
pkgver=1.5
pkgrel=1
pkgdesc="Mouseless text selection for rxvt-unicode"
arch=("any")
depends=('rxvt-unicode')
install=('urxvt-keyboard-select.install')
license=("GPL")
url='http://www.github.com/muennich/urxvt-perls'
source=(https://github.com/downloads/muennich/urxvt-perls/keyboard-select-$pkgver.tar.gz)
md5sums=('b52d89bb272776e3b874b87e49bd5bd1')

_extension="keyboard-select"

build() {
  cd "${srcdir}/${_extension}-${pkgver}"

  install -D -m 644 "${_extension}" "${pkgdir}/usr/lib/urxvt/perl/${_extension}"
}
