pkgname=libfprint-git
pkgver=20100509
pkgrel=1
pkgdesc="Git repo of libfprint"
url="http://reactivated.net/fprint/wiki/Libfprint"
arch=('i686' 'x86_64')
license=('LGPL')
groups=('fprint')
depends=('libusb1' 'imagemagick' 'libtool')
conflicts=('libfprint' 'libfprint-nightly' 'libfprint-unstable')
provides=('libfprint' 'libfprint-nightly' 'libfprint-unstable')
makedepends=('git')

_gitroot="git://github.com/dsd/libfprint.git"
_gitname="libfprint"

build() {
	cd ${srcdir}
	msg "Connecting to github.com GIT server...."

	if [ -d ${srcdir}/$_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	git clone $_gitname $_gitname-build
	cd ${srcdir}/$_gitname-build
	
	./autogen.sh --prefix=/usr

	./configure --prefix=/usr

	make || return 1
	make DESTDIR="$pkgdir" install
}
