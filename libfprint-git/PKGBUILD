# Contributer: phragment <phragment@lavabit.com>

pkgname=libfprint-git
pkgver=20110821
pkgrel=1
pkgdesc=""
url="http://www.reactivated.net/fprint"
arch=('i686' 'x86_64')
license=('LGPL')
groups=('fprint')
depends=('libusb' 'imagemagick' 'libtool')
conflicts=('libfprint' 'libfprint-nightly' 'libfprint-unstable')
provides=('libfprint' 'libfprint-nightly' 'libfprint-unstable')
makedepends=('git')

_gitroot="git://anongit.freedesktop.org/libfprint/libfprint"
_gitname="libfprint"

build() {
	cd ${srcdir}
	msg "Connecting to GIT server...."

	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	git clone $_gitname $_gitname-build
	cd ${srcdir}/$_gitname-build
	
	./autogen.sh

	./configure --prefix=/usr --sysconfdir=/etc

	make || return 1
	make DESTDIR="$pkgdir" install
}
