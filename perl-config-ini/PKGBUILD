arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-mixin-linewise')
makedepends=()
url='http://search.mcpan.org/dist/Config-INI'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Config-INI-0.023.tar.gz')
