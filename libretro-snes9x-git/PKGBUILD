# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-snes9x-git
_gitname=snes9x
pkgver=2013.03.26_1.53_192_g555f511
pkgrel=1
pkgdesc="libretro implementation of Snes9x. (Super Nintendo Entertainment System)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/snes9xgit/snes9x"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')
source=('git://github.com/snes9xgit/snes9x.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname/libretro
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro/libretro.so $pkgdir/usr/lib/libretro/libretro-snes9x.so
}

