# Contributor: Themaister <maister@archlinux.us>

pkgname=libretro-snes9x-git
pkgver=20130117
pkgrel=1
pkgdesc="libretro implementation of Snes9x."
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/snes9xgit/snes9x"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/snes9xgit/snes9x.git"
_gitname="snes9x"

build() 
{
   cd $srcdir

   msg "Cloning snes9x from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   cd libretro
   make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro/libretro.so $pkgdir/usr/lib/libretro/libretro-snes9x.so
}

