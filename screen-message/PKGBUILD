# Contributor: Andrew LeCain dread@csh.rit.edu
pkgname="screen-message"
pkgver=0.11
pkgrel=2
pkgdesc="sm - Displays a short text fullscreen."
arch=('i686' 'x86_64')
url="http://packages.debian.org/source/lenny/screen-message"
license=('GPL')
groups=()
depends=('cairo' 'glibc' 'gtk2' )
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://ftp.de.debian.org/debian/pool/main/s/screen-message/$pkgname'_'$pkgver.orig.tar.gz);
noextract=()
md5sums=('2909e4e08ac10fe4b64aa8956f652e88')

build() {
  cd "$srcdir/$pkgname.upstream/"
  ./configure 

  make || return 1
  make DESTDIR="$pkgdir/" install

  # move to a reasonable spot.. It's not really a game
  mkdir $pkgdir/usr/bin
  mv $pkgdir/usr/local/games/sm $pkgdir/usr/bin/sm
  rmdir $pkgdir/usr/local/games

}
