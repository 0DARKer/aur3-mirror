# Contributor: Michal Soltys <nozo@ziu.info>

pkgname=jailkit
pkgver=2.13
pkgrel=1
pkgdesc="Useful chroot tools"
arch=(i686 x86_64)
url="http://olivier.sessink.nl/jailkit"
license=('GPL')
depends=('glibc' 'python')
backup=(etc/jk_check.ini etc/jk_chrootsh.ini etc/jk_init.ini etc/jk_lsh.ini etc/jk_socketd.ini etc/jk_update.ini)
source=(http://olivier.sessink.nl/jailkit/$pkgname-$pkgver.tar.gz)
install=jailkit.sh
md5sums=('ee47965e33e603231e81e5ee81997a06')

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  ./configure \
	--prefix=/usr \
	--mandir=/usr/share/man \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--libexecdir=/usr/lib/jailkit

  make || return 1

  make install DESTDIR=$startdir/pkg

}
