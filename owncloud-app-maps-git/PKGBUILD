pkgname=owncloud-app-maps-git
pkgver=1
pkgrel=1
pkgdesc="Owncloud maps app"
arch=('any')
url="https://github.com/owncloud/maps"
license=('AGPL')
depends=('owncloud')
makedepends=()
options=('!strip')
conflicts=('owncloud-app-maps')
source=("git+https://github.com/owncloud/maps.git")
sha512sums=("SKIP")

pkgver() {
  cd "$SRCDEST/${_pkgname}"
  git describe --always | sed 's|-|.|g' | cut -f2 -d"v"
}
sha512sums=('SKIP')

package() {
  install -d "${pkgdir}/usr/share/webapps/owncloud/apps"
  cp -a "${srcdir}/maps" "${pkgdir}/usr/share/webapps/owncloud/apps/maps"
}
