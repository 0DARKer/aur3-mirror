# Maintainer: XZS <d.f.fischer at web dot de>

pkgname='gnome-shell-extension-maximus-two-git'
pkgdesc="Removes the title bar on maximised windows"
pkgver=13.b2e6bee
pkgrel=1
arch=(any)
url='https://github.com/johnhoran/GnomeExtensionMaximusTwo'
license=(GPLv3)
depends=('gnome-shell>=3.8' 'xorg-xprop')
source=("$pkgname::git+$url")
md5sums=('SKIP')

pkgver() {
  cd $pkgname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname
  destdir="$pkgdir/usr/share/gnome-shell/extensions/maximus-two@wilfinitlike.gmail.com"
  install -d "$destdir"
  cp -r maximus-two-wilfinitlike.gmail.com/* "$destdir"
}
