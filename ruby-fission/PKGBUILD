# Maintainer: Anshuman Bhaduri <anshuman (dot) bhaduri 0 (at) gmail (dot) com>

pkgname=ruby-fission
_gemname=${pkgname#ruby-}
pkgver=0.4.0
pkgrel=1
pkgdesc="A simple utility to manage VMware Fusion VMs from the command line."
arch=('any')
url="https://github.com/thbishop/fission/"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-cfpropertylist')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('d34073ffa3435be30a5f92856c76ed33')

package() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies \
    -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${_gemname}-${pkgver}.gem

  install -Dm644 $(find "${pkgdir}" -name LICENSE) \
    "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
