pkgname=trytond-project-invoice
_pkgname=trytond_project_invoice
pkgver=2.8.2
_pkgdir=2.8
pkgrel=1
pkgdesc="The project_invoice module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.8' 'trytond-project>=2.8' 'trytond-project-revenue>=2.8' 'trytond-timesheet>=2.8' 'trytond-account>=2.8' 'trytond-account-invoice>=2.8' 'trytond-product>=2.8')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("b0b8343f1cbb252d89740d427749bf4a")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}