pkgname=grub2-efi-bzr ## Dummy pkgname for AUR

# pkgname=grub2-efi-x86_64-bzr     ## Uncomment for grub2 BZR Main Trunk for x86_64-EFI
# pkgname=grub2-efi-x86_64-bzr-exp ## Uncomment for grub2 BZR Experimental Branch for x86_64-EFI
# pkgname=grub2-efi-i386-bzr       ## Uncomment for grub2 BZR Main Trunk for i386-EFI
# pkgname=grub2-efi-i386-bzr-exp   ## Uncomment for grub2 BZR Experimental Branch for i386-EFI

pkgver=3352
url="http://www.gnu.org/software/grub/"
arch=('i686' 'x86_64')
license=('GPL3')
makedepends=('bzr' 'rsync' 'xz' 'bdf-unifont' 'python2' 'autogen' 'texinfo' 'help2man' 'gettext' 'device-mapper')
depends=('xz' 'freetype2' 'device-mapper' 'gettext' 'dosfstools' 'efibootmgr')
optdepends=('mtools')
install="grub2-efi-bzr.install"
backup=('etc/default/grub' 'etc/grub.d/40_custom')
conflicts=('grub2-common')

source=('grub.default'
		'grub.cfg.example'
		'archlinux_grub2_mkconfig_fixes.patch')

sha256sums=('4f895edb21c59ceae02b55d7a5c1d6881e0d0a229f00e4339f4326b5dfffaf3f'
			'56779198e1736588245df00532bbdf73fd1032a3dc844bf287c46ed0dbe4cdcf'
			'1197b9d567319ab3a0a243700b7d0592427fdc0ef3d375652a93c10249b4aebf')

case "${pkgname}" in
	grub2-efi-x86_64-bzr )
					pkgdesc="The GNU GRand Unified Bootloader version 2 - x86_64 UEFI - BZR Main Trunk with grub-extras"
					pkgrel=1
					conflicts=(${conflicts[@]} 'grub2-efi-x86_64')
					provides=('grub2-efi-x86_64')
					_EFI_ARCH=x86_64
					_trns_name="grub2_efi_x86_64_bzr"
					_bzrtrunk="bzr://bzr.savannah.gnu.org/grub/trunk/grub/"
					# _bzrtrunk="lp:grub/grub2"
					_bzrmod="grub2"
					;;
	grub2-efi-x86_64-bzr-exp )
					pkgdesc="The GNU GRand Unified Bootloader version 2 - x86_64 UEFI - BZR Experimental branch with grub-extras"
					pkgrel=1
					conflicts=(${conflicts[@]} 'grub2-efi-x86_64')
					provides=('grub2-efi-x86_64')
					_EFI_ARCH=x86_64
					_trns_name="grub2_efi_x86_64_bzr_exp"
					_bzrtrunk="bzr://bzr.savannah.gnu.org/grub/branches/experimental/"
					# _bzrtrunk="lp:~skodabenz/grub/grub2-bzr-exp"
					_bzrmod="grub2_exp"
					;;
	grub2-efi-i386-bzr )
					pkgdesc="The GNU GRand Unified Bootloader version 2 - i386 UEFI - BZR Main Trunk with grub-extras"
					pkgrel=1
					replaces=('grub2-efi-x86-bzr')
					conflicts=(${conflicts[@]} 'grub2-efi-i386')
					provides=('grub2-efi-i386')
					_EFI_ARCH=i386
					_trns_name="grub2_efi_i386_bzr"
					_bzrtrunk="bzr://bzr.savannah.gnu.org/grub/trunk/grub/"
					# _bzrtrunk="lp:grub/grub2"
					_bzrmod="grub2"
					;;
	grub2-efi-i386-bzr-exp )
					pkgdesc="The GNU GRand Unified Bootloader version 2 - i386 UEFI - BZR Experimental branch with grub-extras"
					pkgrel=1
					replaces=('grub2-efi-x86-bzr-exp')
					conflicts=(${conflicts[@]} 'grub2-efi-i386')
					provides=('grub2-efi-i386')
					_EFI_ARCH=i386
					_trns_name="grub2_efi_i386_bzr_exp"
					_bzrtrunk="bzr://bzr.savannah.gnu.org/grub/branches/experimental/"
					# _bzrtrunk="lp:~skodabenz/grub/grub2-bzr-exp"
					_bzrmod="grub2_exp"
					;;
	grub2-efi-bzr )
					pkgdesc="The GNU GRand Unified Bootloader version 2 for UEFI systems - BZR Development Version with grub-extras - Dummy pkgname - Edit PKGBUILD for actual pkgname"
					pkgrel=1
					_EFI_ARCH="NULL"
					_trns_name="NULL"
					;;
esac


case "${CARCH}" in
	 i686 )
			if [ "${_EFI_ARCH}" == "x86_64" ]
			then
				echo "${pkgname} package can be built only in a x86_64 system. Exiting."
				exit 1
			fi
			;;
	 x86_64 )
			if [ "${_EFI_ARCH}" == "i386" ]
			then
				# makedepends=(${makedepends[@]} 'gcc-multilib' 'gcc-libs-multilib' 'binutils-multilib' 'libtool-multilib' 'lib32-glibc')
				
				true
			fi
			;;
esac


## grub2-extras bzr repo locations
_bzrtrunk_lua="bzr://bzr.savannah.gnu.org/grub-extras/lua/"
# _bzrtrunk_lua="lp:~skodabenz/grub/grub2-extras-lua"
_bzrtrunk_gpxe="bzr://bzr.savannah.gnu.org/grub-extras/gpxe/"
# _bzrtrunk_gpxe="lp:~skodabenz/grub/grub2-extras-gpxe"


update_bzr() {
	
	msg "Connecting to BZR server..."
	
	if [ -d "${srcdir}/${_bzrmod}" ]
	then
		cd "${srcdir}/${_bzrmod}" && bzr pull "${_bzrtrunk}"
		msg "GRUB2 BZR Local repository updated."
	else
		cd "${srcdir}/"
		bzr branch "${_bzrtrunk}" "${_bzrmod}"
		msg "GRUB2 BZR repository cloned."
	fi
	
	if [ -d "${srcdir}/${_bzrmod}/grub2-extras" ]
	then
		cd "${srcdir}/${_bzrmod}/grub2-extras/"
		
		if [ -d "${srcdir}/${_bzrmod}/grub2-extras/lua" ]
		then
			cd "${srcdir}/${_bzrmod}/grub2-extras/lua" && bzr pull "${_bzrtrunk_lua}"
			echo
		else
			bzr branch "${_bzrtrunk_lua}" lua
			echo
		fi
		
		if [ -d "${srcdir}/${_bzrmod}/grub2-extras/gpxe" ]
		then
			cd "${srcdir}/${_bzrmod}/grub2-extras/gpxe" && bzr pull "${_bzrtrunk_gpxe}"
			echo
		else
			bzr branch "${_bzrtrunk_gpxe}" gpxe
			echo
		fi
	else
		mkdir -p "${srcdir}/${_bzrmod}/grub2-extras/"
		cd "${srcdir}/${_bzrmod}/grub2-extras/"
		
		bzr branch "${_bzrtrunk_lua}" lua
		echo
		bzr branch "${_bzrtrunk_gpxe}" gpxe
		echo
	fi
	
	cd "${srcdir}/${_bzrmod}/"
	rsync -Lrtvz translationproject.org::tp/latest/grub/ "${srcdir}/${_bzrmod}/po"
	(cd "${srcdir}/${_bzrmod}/po" && ls *.po | cut -d. -f1 | xargs) > "${srcdir}/${_bzrmod}/po/LINGUAS"
	
}


build() {
	
	if [ "${pkgname}" == "grub2-efi-bzr" ]
	then
		echo "Please edit the PKGBUILD and uncomment the appropriate pkgname as per your UEFI arch and the grub2 bzr branch you want to compile."
		exit 1
	else
		update_bzr
	fi
	
	rm -rf "${srcdir}/${_bzrmod}_build" || true
	
	cp -r "${srcdir}/${_bzrmod}" "${srcdir}/${_bzrmod}_build"
	cd "${srcdir}/${_bzrmod}_build"
	
	patch -Np1 -i "${srcdir}/archlinux_grub2_mkconfig_fixes.patch"
	echo
	
	rm -rf "${srcdir}/${_bzrmod}_build/grub2-extras/zfs" || true
	
	export GRUB_CONTRIB="${srcdir}/${_bzrmod}_build/grub2-extras/"
	
	## Archlinux changed default /usr/bin/python3, need to use /usr/bin/python2 instead
	cp "${srcdir}/${_bzrmod}_build/autogen.sh" "${srcdir}/${_bzrmod}_build/autogen_unmodified.sh"
	sed -i 's|python|python2|g' "${srcdir}/${_bzrmod}_build/autogen.sh"
	
	"${srcdir}/${_bzrmod}_build/autogen.sh"
	echo
	
	## fix unifont.bdf location so grub-mkfont can create *.pf2 files
	sed -i 's|/usr/share/fonts/unifont|/usr/share/fonts/misc|g' "${srcdir}/${_bzrmod}_build/configure"
	
	mkdir -p "${srcdir}/${_bzrmod}_build/BUILD_${_EFI_ARCH}"
	cd "${srcdir}/${_bzrmod}_build/BUILD_${_EFI_ARCH}"
	
	CFLAGS= ../configure --with-platform=efi \
						 --target="${_EFI_ARCH}" \
						 --host="${CARCH}-unknown-linux-gnu" \
						 --program-transform-name=s,grub,${_trns_name}, \
						 --enable-mm-debug \
						 --enable-grub-mkfont \
						 --enable-nls \
						 --disable-efiemu \
						 --prefix=/usr \
						 --bindir=/bin \
						 --sbindir=/sbin \
						 --mandir=/usr/share/man \
						 --infodir=/usr/share/info \
						 --sysconfdir=/etc \
						 --disable-werror
	echo
	
	CFLAGS= make
	echo
	
}


package() {
	
	cd "${srcdir}/${_bzrmod}_build/BUILD_${_EFI_ARCH}"
	make DESTDIR="${pkgdir}" install
	
	## install /etc/default/grub
	install -Dm644 "${srcdir}/grub.default" "${pkgdir}/etc/default/grub"
	
	## install example grub2 config file
	install -Dm755 "${srcdir}/grub.cfg.example" "${pkgdir}/usr/share/${_trns_name}/grub.cfg.example"
	
	sed -i "s|^\(_EFI_ARCH\)=.*|\1=${_EFI_ARCH}|; \
		s|^\(_trns_name\)=.*|\1=${_trns_name}|" \
		"${startdir}/grub2-efi-bzr.install"
	
}
