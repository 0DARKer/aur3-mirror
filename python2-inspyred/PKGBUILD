pkgname=python2-inspyred
pkgver=1.0
pkgrel=1
pkgdesc="A framework for creating bio-inspired computational intelligence algorithms in Python."
arch=('any')
url="http://inspyred.github.com"
license=('GPL')
depends=('python2')
source=("https://github.com/inspyred/inspyred/downloads/inspyred-$pkgver.tar.gz")
md5sums=('306056946b1e2d1c5fe8da0805a41519')

package() {
  cd "$srcdir/inspyred-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

