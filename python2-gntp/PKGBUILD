# Maintainer: Gordin <9ordin @t gmail dot com>

pkgname='python2-gntp'
pkgver=0.4
pkgrel=1
pkgdesc='Python bindings for the Growl Notification Transport Protocol'
arch=('any')
url='http://kungfudiscomonkey.net/gntp/'
license=('MIT')
depends=('python2')
source=("http://pypi.python.org/packages/source/g/gntp/gntp-${pkgver}.tar.gz")
sha256sums=('3847d55cbd5916c2f4c844b6f18195d9bea80d82ac1c20f152a7449588caabf2')

package() {
    cd ${srcdir}/gntp
    python2 setup.py install --root=${pkgdir}
    install -D -m644 "${srcdir}/gntp/COPYING" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

