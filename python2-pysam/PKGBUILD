pkgname=python2-pysam
pkgver=0.7.4
pkgrel=1
pkgdesc="Python interface for the SAM/BAM sequence alignment and mapping format"
arch=('any')
url="http://code.google.com/p/pysam/"
license=('MIT')
groups=()
depends=('python2' 'pyrex')
makedepends=('python2-distribute')
provides=('python2-pysam')
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=('http://pysam.googlecode.com/files/pysam-0.7.4.tar.gz')
sha1sums=('d8d7c8e62a17cd8a56d2997543f2dbf9f817df03')

package() {
  cd "$srcdir/pysam-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

