# Maintainer : Martin Wimpress <code@flexion.org>

pkgname=syncthing
pkgver=0.8.5
pkgrel=1
_pkgarch=amd64
pkgdesc="Open Source Continuous Replication / Cluster Synchronization Thing"
url="http://syncthing.net/"
license=('MIT')
arch=('armv6h' 'armv7h' 'i686' 'x86_64')
source=("https://github.com/calmh/${pkgname}/releases/download/v${pkgver}/${pkgname}-linux-amd64-v${pkgver}.tar.gz"
        "syncthing@.service")
sha1sums=('6f73b3bbce2fcab24b475e48cf860ef54ec926a6'
          '619d71df8fdbd4b3c4c25112a3614ca0292226d4')
install=${pkgname}.install

if [ "$CARCH" == "armv6h" ]; then
    _pkgarch="armv6"
    sha1sums[0]='8d40fa5b16b6d4eb47a8d9ecd60a6eb1b83b8ea1'
    source[0]="https://github.com/calmh/${pkgname}/releases/download/v${pkgver}/${pkgname}-linux-armv6-v${pkgver}.tar.gz"
elif [ "$CARCH" == "armv7h" ]; then
    _pkgarch="armv7"
    sha1sums[0]='59a9b96507521e9054d33b22b77b958ba9fd1577'
    source[0]="https://github.com/calmh/${pkgname}/releases/download/v${pkgver}/${pkgname}-linux-armv7-v${pkgver}.tar.gz"
elif [ "$CARCH" == "i686" ]; then
    _pkgarch="386"
    sha1sums[0]='6037eb592d70962fdae762ceaf5bc01732b2afe9'
    source[0]="https://github.com/calmh/${pkgname}/releases/download/v${pkgver}/${pkgname}-linux-386-v${pkgver}.tar.gz"
fi

package() {
    cd "${srcdir}/${pkgname}-linux-${_pkgarch}-v${pkgver}"
    install -D -m 755 syncthing "${pkgdir}/usr/bin/syncthing"
    install -D -m 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    install -D -m 644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
    install -D -m 644 "${srcdir}/syncthing@.service" "${pkgdir}/usr/lib/systemd/system/syncthing@.service"
}
