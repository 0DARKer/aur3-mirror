# Contributor: Florian Krauthan <fkrauthan@gmx.net>
# category: office

pkgname=toggl-desktop
pkgver=4.94.0
pkgrel=2
pkgdesc="Time tracker application"
arch=('i686' 'x86_64')
url="http://www.toggl.com/"
license=("Closed source")
groups=()
depends=('qt4>=4.6.0 libpng12 libgcrypt15')
provides=()
conflicts=('toggl')
replaces=('toggl')
backup=()
options=()
if [ "$CARCH" == 'x86_64' ]
then
  source=(https://download.toggl.com/toggldesktop/edge/deb/toggl-desktop_${pkgver}-0_amd64.deb TogglDesktop.desktop)
  md5sums=(5dc5c5099b1832f7c7893abdd4f5e942 60196416ceeeb5b228a10e79c1fee2a8)
else
  source=(https://download.toggl.com/toggldesktop/edge/deb/toggl-desktop_${pkgver}-0_i386.deb TogglDesktop.desktop)
  md5sums=(6ae3baca570951c25f4a111efcc884a0 60196416ceeeb5b228a10e79c1fee2a8)
fi
noextract=()
#generated with 'makepkg -g'

build() {
  cd "$srcdir/"

  #extract archive
  if [ "$CARCH" == 'x86_64' ]
  then
   ar p toggl-desktop_${pkgver}-0_amd64.deb data.tar.gz | tar xz
  else
   ar p toggl-desktop_${pkgver}-0_i386.deb data.tar.gz | tar xz
  fi

  # Manual install
  mkdir -p $pkgdir/usr
  cp -a usr/* $pkgdir/usr
  cp TogglDesktop.desktop $pkgdir/usr/share/applications/
  
  mkdir -p $pkgdir/opt
  cp -a opt/* $pkgdir/opt
}

