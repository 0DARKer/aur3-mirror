# Maintainer: Gour <gour@atmarama.net>
pkgname=python2-htsql
_pkgname=HTSQL
pkgver=2.0.1
pkgrel=2 
pkgdesc="URI-based high-level query language for relational databases"
url="http://htsql.org/"
arch=('i686' 'x86_64')
license=('custom')
depends=('python2-distribute' 'python-yaml>=3.0.7' 'python-psycopg2>=2.0.10')
makedepends=()
source=(http://pypi.python.org/packages/source/H/${_pkgname}/${_pkgname}-$pkgver.tar.gz)
md5sums=('6d156dd2b3701e0375995e38f30ab852')

build() {
  cd $startdir/src/${_pkgname}-$pkgver

  python2 setup.py install --prefix=/usr --root=$pkgdir/ || return 1

  # License
  install -D -m644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"

}