# Maintainer: Soup <soup a.t soultrap d.o.t n.e.t>
# Contributor: Andres Perera <aepd87@gmail.com>

pkgname="checkbashisms"
pkgver="2.10.69"
pkgrel=2
pkgdesc="Debian script that checks for bashisms"
arch=('any')
url="http://packages.qa.debian.org/d/devscripts.html"
license=('GPL')
depends=('perl')
conflicts=('devscripts')
source=("http://ftp.de.debian.org/debian/pool/main/d/devscripts/devscripts_$pkgver.tar.gz")
md5sums=('a2d81e4a24722653e72f5930df7c2508')

build() {
  sed -i s,"###VERSION###","$pkgver", "$srcdir/devscripts-$pkgver/scripts/checkbashisms.pl"
  install -Dm755 "$srcdir/devscripts-$pkgver/scripts/checkbashisms.pl" "$pkgdir/usr/bin/checkbashisms"
  install -Dm644 "$srcdir/devscripts-$pkgver/scripts/checkbashisms.1" "$pkgdir/usr/share/man/man1/checkbashisms.1"
}
