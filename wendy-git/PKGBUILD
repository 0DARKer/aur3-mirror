# Maintainer: Miles Sandlar <miles at userbound.com>
pkgname=wendy-git
pkgver=1.0
pkgrel=1
pkgdesc='Watch a directory and execute a command on file creation/deletion/modification'
arch=('i686' 'x86_64')
url='http://gitorious.org/pndc/wendy'
license=('MIT')
depends=('glibc')
makedepends=('git')
provides=('wendy')
_gitroot=git://gitorious.org/pndc/wendy.git
_gitname=wendy

build() {
  cd "$srcdir"
  if [ -d "$_gitname" ]; then
    cd "$_gitname" && git pull origin
  else
    git clone "$_gitroot" "$_gitname"
  fi
  
  cd "$srcdir/${_gitname}"
  make
}

package() {
  cd "$srcdir/${_gitname}"
  install -D -m755 wendy "${pkgdir}/usr/bin/wendy"
}
