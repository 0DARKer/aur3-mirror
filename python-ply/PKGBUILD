pkgname=python-ply
_pkgname=ply
pkgver=3.3
pkgrel=1
pkgdesc="An implementation of lex and yacc parsing tools for Python."
arch=('i686' 'x86_64')
url="http://code.google.com/p/ply-python/"
license=('LGPL')
depends=('python')
makedepends=('python-distribute')
source=("http://www.dabeaz.com/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
md5sums=('4a7f837f71a7c1ea6b5b0c57272909c7')

build() {
	cd $_pkgname-$pkgver
	python setup.py install --root=$pkgdir/
}
