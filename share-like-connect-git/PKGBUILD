pkgname=share-like-connect-git
pkgver=20121129
pkgrel=1
pkgdesc="The share like and connect feature for KDE Plasma Active 2.0"
arch=(i686 x86_64)
url="http://community.kde.org/Plasma/Active"
license=('LGPL')
depends=('kdebase-workspace')
makedepends=('automoc4' 'cmake' 'git')
provides=('share-like-connect')
conflicts=('share-like-connect')

_gitroot=git://anongit.kde.org/share-like-connect.git
_gitname=share-like-connect

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"

  msg "Starting build..."
  rm -rf "$srcdir/build"
  mkdir "$srcdir/build"
  cd "$srcdir/build"

  cmake ../$_gitname \
      -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix)
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
