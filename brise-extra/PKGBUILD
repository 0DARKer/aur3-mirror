# From: PKGBUILD of community/brise

pkgname=brise-extra
pkgver=0.32
pkgrel=2
pkgdesc="Rime schema repository with extra methods installed (array30, scj6, stenotype, traditional wubi)"
arch=('i686' 'x86_64')
url="http://code.google.com/p/rimeime/"
license=('GPL3')
depends=()
makedepends=('cmake' 'librime>=1.1' 'kyotocabinet')
provides=('librime-data' 'brise')
conflicts=('librime<1.1' 'ibus-rime<1.1' 'brise')
source=("http://rimeime.googlecode.com/files/brise-$pkgver.tar.gz" "Makefile.patch")
sha512sums=('c41d4a7399a963b9e023015e1268f0f63693091d0ae2edff9db68397d223bb25ea6c392d2649f7817edd40998b1ed144d63478a01241cdaa5f2e84fd846e24d7'
            'fb50ba9f6d5ea8aa81be8f1823040a175809e844e4426228188749ef178dec496aa44571cd5980845bc5392a1c1476871c676f32ba3ab917ddc1c01008ee6018')

prepare()
{
  cd brise/
  patch Makefile ../Makefile.patch
}

build() {
  cd brise
  make
}

package() {
  cd brise
  make DESTDIR="$pkgdir" install
}

