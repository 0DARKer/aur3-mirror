pkgname=kccmp
pkgver=0.2
pkgrel=2
pkgdesc="A simple tool for comparing two linux kernel .config files."
arch=('i686' 'x86_64')
url="http://stoopidsimple.com/kccmp/"
license=('GPL2')
depends=('qt' 'boost')
source=(http://stoopidsimple.com/files/$pkgname-$pkgver.tar.gz
        qt4_and_release.patch)
sha1sums=('f8a1fb76cf596f6b770722f3e7b25e00c2c59d3e'
          '0baf4edecc534499d16f9ae812f57ad783f34980')

build() {
  cd $srcdir/$pkgname-$pkgver
  msg2 "Applying patch to use Qt4 instead of Qt3..."
  patch -Nsp1 -i ../qt4_and_release.patch
  msg2 "Building..."
  qmake
  make
  msg2 "Installing..."
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
