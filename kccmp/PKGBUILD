# Contributor: Paulo Freire <paulofreire gmail com>

pkgname=kccmp
pkgver=0.2
pkgrel=2
pkgdesc="A simple tool for comparing two linux kernel .config files"
arch=('i686' 'x86_64')
url="http://stoopidsimple.com/kccmp/"
license=('GPL2')
depends=('qt' 'boost')
source=(http://stoopidsimple.com/files/$pkgname-$pkgver.tar.gz \
  $pkgname.patch)
md5sums=('f72784dd107c40995ef93f29173d96fe'
         'f2d5a7624d3840e94f0b96b4c3ead356')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p0 -i ../$pkgname.patch || return 1
  qmake || return 1
  make || return 1
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
