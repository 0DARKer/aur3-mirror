# Maintainer: Chris Bolton <http://scr.im/chris-kun>
pkgname=utserver
pkgver=3.0_alpha23418
pkgrel=1
pkgdesc="uTorrent's linux-native server intended for users seeking a fast, commandline only client with remote web-based management."
arch=(i686)
url="http://www.utorrent.com/downloads/linux"
license=(custom)
depends=(gcc-libs bash)
makedepends=(unzip)
install=$pkgname.install
source=(http://download.utorrent.com/linux/utorrent-server-3.0-23418.tar.gz utserver.conf utserver utserver.sh EULA)
md5sums=('48634e313983ad46cd2629e3957d41b3'
         '8775b57e10241709a5a3b582a3b11d3f'
         '84629a74f9c515789fcf1398cda4eef5'
         '96bc6f7c70ed629efbcae17a13a84f9b'
         '1d419096bb07845f7e64ad9a7b10d963')

build() {
  install -dm755 $pkgdir/usr/share/doc/utserver
  install -dm755 $pkgdir/usr/share/utserver/{webui,downloads/in_progress,torrents,.tmp}  
}

package() {
  cd $srcdir/bittorrent-server-v3_0
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
  install -m644 docs/* $pkgdir/usr/share/doc/utserver
  unzip webui.zip -d $pkgdir/usr/share/utserver/webui
  cd $srcdir
  install -m755 utserver.conf $pkgdir/usr/share/utserver
  install -m755 utserver.sh $pkgdir/usr/share/utserver
  install -Dm755 $pkgname $pkgdir/etc/rc.d/$pkgname
  install -Dm755 EULA $pkgdir/usr/share/licenses/utserver/EULA
}
