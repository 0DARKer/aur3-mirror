# Maintainer: Xyne <ac xunilhcra enyx, backwards>

pkgname=texlive-mhchem-bundle
pkgver=3.11
pkgrel=1
pkgdesc="Typeset chemical formulae/equations and Risk and Safety phrases in LaTeX."
arch=('any')
depends=('texlive-bin')
url="http://www.ctan.org/tex-archive/macros/latex/contrib/mhchem/"
license=('custom')
source=(http://mirrors.ctan.org/macros/latex/contrib/mhchem/mhchem.sty
        http://mirrors.ctan.org/macros/latex/contrib/mhchem/rsphrase.sty
        http://mirrors.ctan.org/macros/latex/contrib/mhchem/legal.txt
        http://mirrors.ctan.org/macros/latex/contrib/mhchem/mhchem.pdf)
install=$pkgname.install

package() {
  cd "${srcdir}"
  install -D -m644 mhchem.sty "${pkgdir}"/usr/share/texmf/tex/latex/"${pkgname}"/mhchem.sty
  install -D -m644 rsphrase.sty "${pkgdir}"/usr/share/texmf/tex/latex/"${pkgname}"/rsphrase.sty
  install -D -m644 legal.txt "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}

sha1sums=('921172fe7f5e863cfaea618e0272a2b138897590'
          '17a19b7971178b3ad66b21fbcdbc52a1f751c7f1'
          '6a055af343d867c1ab9ad766b7a99ddb87c1b87f'
          '304490e8a7a514a45531b66c87d48f8a6d0e78b3')
