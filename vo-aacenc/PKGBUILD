# Maintainer: DrZaius <lou[at]fakeoutdoorsman[dot]com>

pkgname=vo-aacenc
pkgver=0.1.0
pkgrel=1
pkgdesc="VisualOn implementation of Advanced Audio Coding (AAC) encoder"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/opencore-amr/"
license=('APACHE')
depends=('gcc-libs')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/opencore-amr/${pkgname}-${pkgver}.tar.gz)
md5sums=('105eed11cec17ccc9db3a4f3293b5391')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --enable-shared=no
  make
  make DESTDIR=${pkgdir}/ install
}
