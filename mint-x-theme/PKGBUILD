# Maintainer: Carl George <carl@carlgeorge.us>
# Special thanks to the Linux Mint project, without them this would not exist.

pkgname=mint-x-theme
_name=mint-themes
pkgver=1.3.0
_gtk3ver=3.10-2
pkgrel=1
pkgdesc='A Linux Mint theme, based on Clearlooks Revamp, Elementary, and Faenza.  Includes GTK2, GTK3, Metacity, and Xfce components.'
arch=('any')
url='http://packages.linuxmint.com'
license=('GPL3')
conflicts=('mint-themes')
source=(
	"${url}/pool/main/m/${_name}/${_name}_${pkgver}.tar.gz"
        "${url}/pool/main/m/${_name}-gtk3/${_name}-gtk3_${_gtk3ver}.tar.gz"
)
sha256sums=(
	'909f052e2e5b2e34f219024a9d3ca98a021c407d9ea5b64535c6588f81cd95ea'
	'3c4b2657fb5323d3dcf6dc416cfb4d429d20ad19e0ee0c8647af9c6a7a24e39a'
)

prepare() {
	find ${srcdir} -name .gitkeep -type f -delete
	find ${srcdir} -type d ! -perm 755 -exec chmod 755 {} +
	find ${srcdir} -type f ! -perm 644 -exec chmod 644 {} +
}

package() {
	cp -dr --no-preserve=ownership ${srcdir}/${_name}/usr ${pkgdir}/
	cp -dr --no-preserve=ownership ${srcdir}/${_name}-gtk3/usr ${pkgdir}/
}
