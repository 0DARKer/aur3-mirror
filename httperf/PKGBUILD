pkgname=httperf
pkgver=0.9.0
pkgrel=3
pkgdesc="A tool for measuring web server performance."
arch=(i686 x86_64)
license=(GPL)
url="http://www.hpl.hp.com/research/linux/httperf/"
depends=(openssl)
source=(ftp://ftp.hpl.hp.com/pub/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('2968c36b9ecf3d98fc1f2c1c9c0d9341')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr 
  make || return 1
  make DESTDIR=$startdir/pkg/ install
}
