# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-traits-doc
pkgver=4.0.0
_githubtag=e400f6e
pkgrel=1
pkgdesc="Documentation for Traits"
arch=('any')
url="https://github.com/enthought/traits"
license=('BSD')
makedepends=('python2-distribute')
conflicts=('python2-traits-doc-git' 'python-ets-traits-doc-svn')
options=(!emptydirs)

source=("https://github.com/enthought/traits/tarball/${pkgver}")
md5sums=('32851bede53dd9c2223937b69550b9cd')

build() {
  cd "$srcdir/enthought-traits-${_githubtag}"

  cd docs

  make html

  install -d "${pkgdir}"/usr/share/doc/enthought/traits
  cp -r build/html/* "${pkgdir}"/usr/share/doc/enthought/traits
}

