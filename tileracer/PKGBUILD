#ContributorPatrik Ilg <p.ilg@arcor.de>

pkgname=tileracer
pkgver=0.702
pkgdesc="3D stunt racing game which features realistic car physics and an in game track editor"
pkgrel=1
arch=('i686')
url="http://tileracer.model-view.com"
license=('other')
depends=('ogre3d' 'physx')
source=(http://tileracer.model-view.com/mirrordownload.php?file=TileRacer${pkgver}.tar.gz TileRacer.desktop)
noextract=(mirrordownload.php?file=TileRacer${pkgver}.tar.gz)
build()
{
mkdir -p "${startdir}/pkg/usr/share/applications"
cp "${startdir}/src/TileRacer.desktop" "${startdir}/pkg/usr/share/applications/"
mkdir -p "${startdir}/pkg/usr/${pkgname}"
cd "${startdir}/src/"
tar xzvf mirrordownload.php?file=TileRacer${pkgver}.tar.gz -C "${startdir}/pkg/usr/${pkgname}"
}

md5sums=('c9d1d9fcc835aaf07933b7608f03d542'
         'b55ef3241e6ccbcaf80ce0231ecaf93d')
