pkgname='perl-data-optlist'
pkgver='0.106'
pkgrel='1'
pkgdesc="parse and validate simple name/value option pairs"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-params-util>=0.14' 'perl-sub-install>=0.921')
url='http://search.cpan.org/dist/Data-OptList'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Data-OptList-0.106.tar.gz')
md5sums=('d2e2e74540f9a388a7d180849d63d03a')

build() {
  DIST_DIR="${srcdir}/Data-OptList-0.106"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
