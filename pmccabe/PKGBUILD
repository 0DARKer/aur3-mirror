# Contributor: Andre Klitzing <andre () incubo () de>
pkgname=pmccabe
pkgver=2.5
pkgrel=1
pkgdesc="McCabe-style function complexity and line counting for C and C++"
arch=('i686' 'x86_64')
url="http://parisc-linux.org/~bame/pmccabe/"
license=('GPL')
source=(http://ftp.debian.org/debian/pool/main/p/$pkgname/${pkgname}_$pkgver.tar.gz makefile.patch)

build() {
  cd "$srcdir/$pkgname"

  patch -p0 -i "$srcdir/makefile.patch" || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
md5sums=('cf83483e13b083976650b3a2a43d6283'
         '853579ee75b41be98936c36d2306b540')
