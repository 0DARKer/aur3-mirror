pkgname=gimp-brushbox
_pkgname=GimpBrushBox_v2
pkgver=2.0
pkgrel=1
pkgdesc='Set of brushes, presets, dynamics made by GrindGod'
arch=('any')
url='http://grindgod.deviantart.com/art/The-Gimp-BrushBox-v2-0-382881674'
license=('CCPL:cc-by-nc-sa')
depends=(gimp)
source=("$pkgname-$pkgver.zip::http://fc06.deviantart.net/fs71/f/2013/192/7/a/the_gimp_brushbox_v2_0_by_grindgod-d6byhe2.zip")
options=(!strip)

package(){
  cd "$srcdir"/$_pkgname
  install -Dm644 Readme.txt "$pkgdir"/usr/share/doc/$pkgname/Readme.txt
  install -dm755 "$pkgdir"/usr/share/gimp/2.0
  cp -r --no-preserve=mode {brushes,dynamics,gradients,tool-presets} "$pkgdir"/usr/share/gimp/2.0/

}
md5sums=('3fff8226b4d94ed3f2bafb11d7c31a76')
