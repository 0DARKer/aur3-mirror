# Maintainer: Hilton Medeiros <medeiros.hilton@gmail.com>

pkgname=pelican
pkgver=2.8.0
pkgrel=1
pkgdesc="A tool to generate a static blog, with restructured text (or markdown) input files."
arch=('any')
url="http://pelican.notmyidea.org"
license=('AGPL3')
depends=('python2-jinja' 'python-feedgenerator' 'python2-pytz')
optdepends=('docutils:              for reST support'
            'python2-pygments:      for syntactic colorization with reST input'
            'python2-markdown:      for Markdown support'
            'python-beautifulsoup:  for importing from wordpress/dotclear'
            'python2-feedparser:    for importing from feeds')
source=("http://pypi.python.org/packages/source/p/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('64ac2fbebdf2d254c8bebd2aab9c831f')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --prefix=/usr --root="$pkgdir" -O1
}
