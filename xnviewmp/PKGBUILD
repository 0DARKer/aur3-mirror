# Contributor: Olivier Duclos <olivier.duclos gmail.com>
# Contributor: wido <widomaker2k7@gmail.com>
# Contributor: VuDu <vudu 'dot' curse 'at' gmail 'dot' com>

pkgname=xnviewmp
pkgver=0.39
pkgrel=1
pkgdesc='An efficient multimedia viewer, browser and converter (beta release).'
url='http://newsgroup.xnview.com/viewtopic.php?f=60&t=24056'

arch=('x86_64' 'i686')
license=('custom')
depends=('glib2' 'expat')

source=('http://download.xnview.com/XnViewMP-linux.tgz'
		'XnView.desktop')
md5sums=('cab11ea66f42f2186fb625259f9eea5a'
		 '7d18a98af004ff1733f7fc76c473a136')

[ "$CARCH" = 'x86_64' ] && source[0]='http://download.xnview.com/XnViewMP-linux-x64.tgz' \
						&& md5sums[0]='bd68eae3382a674fe7efdc5a2512dd2a'

 
build() {
	cp XnView.desktop ${srcdir}/XnViewMP

	install -d -m755 ${pkgdir}/opt/${pkgname}
	install -d ${pkgdir}/usr/bin
	install -d ${pkgdir}/usr/share/applications

	cp -R ${srcdir}/XnViewMP/* ${pkgdir}/opt/${pkgname}

	ln -s /opt/${pkgname}/xnview.sh ${pkgdir}/usr/bin/${pkgname}
	ln -s /opt/${pkgname}/XnView.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
}

