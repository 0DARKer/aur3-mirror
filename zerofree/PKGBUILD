# Maintainer: Lukas Fleischer <archlinux at cryptocrack dot de>

pkgname=zerofree
pkgver=1.0.1
pkgrel=1
pkgdesc="Scans for non-zero free blocks in an ext2 filesystem and fills them with zeroes."
arch=('i686' 'x86_64')
url="http://intgat.tigress.co.uk/rmy/uml/sparsify.html"
license=('GPL')
depends=(e2fsprogs)
source=(http://intgat.tigress.co.uk/rmy/uml/$pkgname-$pkgver.tgz)
md5sums=('a8c772fdd134448f25ab4e7e12004595')

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm0755 zerofree $pkgdir/usr/bin/zerofree
}
