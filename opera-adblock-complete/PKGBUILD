pkgname=opera-adblock-complete
pkgver=10.03.2013
pkgrel=1
pkgdesc="Fanboy's AdBlock Filterset for Opera including Stat/Tracking Filters"
arch=('any')
url="http://www.fanboy.co.nz/adblock/opera/"
license=('cc-by-3.0')
depends=('opera')
source=(urlfilter.ini)
install=${pkgname}.install
sha512sums=('8d852d9700b2a5ae6d5b0a858a35e95b770ef1479e64b9f65825f36970961600b58e049516d62b0c28d8469b7bb41887c3ff6243d77855d80516abdbd1597c97')


package() {
  cd $srcdir
  install -D -m644 urlfilter.ini $pkgdir/usr/share/$pkgname/urlfilter.ini
}

