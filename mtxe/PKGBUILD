pkgname=mtxe
pkgver=1.0.2
pkgrel=1
arch=i686
pkgdesc="mtxe is yet another program that prints the code from the movie, Matrix"
url="http://personal.penny-craal.org/midianian/hack/#mtxe"
license="GPL"
depends=()
source=(http://koti.mbnet.fi/midiania/hack/${pkgname}-${pkgver}.tar.bz2)
md5sums=(395cc99fa9ddb51d5ec1a6c201288dc4)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
