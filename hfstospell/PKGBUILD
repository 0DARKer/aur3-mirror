pkgname=hfstospell
pkgver=0.2.2
pkgrel=1
pkgdesc='Helsinki Finite-State Transducer Technology (HFST) tools'
arch=('i686' 'x86_64')
url='http://www.ling.helsinki.fi/kieliteknologia/tutkimus/hfst/'
license=('APACHE')
depends=('libxml++' 'libarchive' 'libsigc++')
options=(!libtool)
source=(http://downloads.sourceforge.net/project/hfst/hfst/${pkgname}-${pkgver}.tar.gz
	http://www.joh.fi/code/hfstospell/libarchive.patch)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  patch -p0 -i "${srcdir}/libarchive.patch"
  autoreconf -i

  ./configure --prefix=/usr
  make
}

package () {
  cd "${srcdir}/${pkgname}-${pkgver}"

   make DESTDIR="${pkgdir}" install
}

md5sums=('08b3e5d3655813f8ebf69d7139cf2e2e'
         '6ad909a9d08bf1e6184a11bbae691638')
