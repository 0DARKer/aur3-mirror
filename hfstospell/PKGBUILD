# Maintainer: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=hfstospell
pkgver=0.2.1
pkgrel=2
pkgdesc='Helsinki Finite-State Transducer Technology (HFST) tools'
arch=('i686' 'x86_64')
url='http://www.ling.helsinki.fi/kieliteknologia/tutkimus/hfst/'
license=('APACHE')
depends=('libxml++' 'libarchive' 'libsigc++')
options=(!libtool)
source=(http://downloads.sourceforge.net/project/hfst/hfst/${pkgname}-${pkgver}.tar.gz)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr

  make
}

package () {
  cd "${srcdir}/${pkgname}-${pkgver}"

   make DESTDIR="${pkgdir}" install
}
md5sums=('927411cdb0655b42a7de2b01bfb6f496')
