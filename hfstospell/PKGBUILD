# Contributor: Janne Haapsaari	<iki.fi: haaja>

pkgname=hfstospell
pkgver=0.2.3
pkgrel=2
pkgdesc='Helsinki Finite-State Transducer Technology (HFST) tools'
arch=('i686' 'x86_64')
url='http://www.ling.helsinki.fi/kieliteknologia/tutkimus/hfst/'
license=('APACHE')
depends=('libxml++' 'libarchive' 'libsigc++')
options=(!libtool)
source=(http://downloads.sourceforge.net/project/hfst/hfst/hfst-ospell-${pkgver}.tar.gz
	http://www.joh.fi/code/hfstospell/libarchive.patch)

prepare() {
  cd "${srcdir}/hfst-ospell-${pkgver}"

  sed 's|@HFSTOSPELL_NAME@|hfstospell|' -i hfstospell.pc.in

  patch -p0 -i "${srcdir}/libarchive.patch"
  autoreconf -i
}

build() {
  cd "${srcdir}/hfst-ospell-${pkgver}"

  ./configure --prefix=/usr
  make
}

package () {
  cd "${srcdir}/hfst-ospell-${pkgver}"

   make DESTDIR="${pkgdir}" install
}

md5sums=('753cf07c4a857e0a8b0da613f9bf2642'
         '6ad909a9d08bf1e6184a11bbae691638')
