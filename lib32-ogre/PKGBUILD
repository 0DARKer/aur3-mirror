# Maintainer  : Dan Vratil <vratil@progdansoft.com>

pkgname=lib32-ogre
pkgver=1.7.2
pkgrel=1
_32pkgrel=4
pkgdesc="A scene-oriented. flexible 3D engine written in C++ (32 bit)"
arch=('x86_64')
url="http://www.ogre3d.org"
depends=('ogre' 'lib32-libxaw' 'lib32-zziplib' 'lib32-boost-libs' 'lib32-freeimage') 
license=('custom:MIT')
groups=('lib32')
source=(ftp://mirrors.kernel.org/archlinux/community/os/i686/ogre-${pkgver}-${_32pkgrel}-i686.pkg.tar.xz)
md5sums=('555bb58784c3e1a051ac3df5d455240d')

package() 
{
	mkdir -p ${pkgdir}/usr/lib32/{pkgconfig,OGRE/cmake,OGRE/Samples}
	cp -P ${srcdir}/usr/lib/lib* ${pkgdir}/usr/lib32/
	install ${srcdir}/usr/lib/OGRE/*.so ${pkgdir}/usr/lib32/OGRE/
	install ${srcdir}/usr/lib/OGRE/cmake/*  ${pkgdir}/usr/lib32/OGRE/cmake
	install ${srcdir}/usr/lib/OGRE/Samples/* ${pkgdir}/usr/lib32/OGRE/Samples
	install -D ${srcdir}/usr/lib/pkgconfig/* ${pkgdir}/usr/lib32/pkgconfig/
	sed -i 's/\/lib/\/lib32/g' ${pkgdir}/usr/lib32/pkgconfig/*

	mkdir -p ${pkgdir}/usr/share/license
	ln -s /usr/share/license/ogre ${pkgdir}/usr/share/license/lib32-ogre
}
