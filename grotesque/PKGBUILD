pkgname=grotesque
pkgver=0.2.1
pkgrel=1
pkgdesc="A utility that helps you manage your collection of interactive fiction, or text adventures."
arch=(i686 x86_64)
url="http://grotesque.sourceforge.net/"
license=('gpl')
depends=('pygtk')
optdepends=('')
makedepends=('')
#provides=()
#conflicts=()
#replaces=()
#backup=()
groups=()
#options=()
#install=
source=(http://downloads.sourceforge.net/grotesque/${pkgname}-${pkgver}.tar.gz)
#noextract=()
md5sums=('170168d1dc8926aa8dadada2f2f9cce8')


build() {
  cd $srcdir/${pkgname}-${pkgver}
  python setup.py bdist
  cd $startdir/pkg
  
  tar xvfz $srcdir/${pkgname}-${pkgver}/dist/${pkgname}-${pkgver}.linux-${arch}.tar.gz
  mkdir $startdir/pkg/usr/lib/python2.6/site-packages/grotesque/data
  #wget http://grotesque.svn.sourceforge.net/viewvc/grotesque/grotesque/trunk/src/grotesque/data/grotesque_icon.png
  cp $srcdir/${pkgname}-${pkgver}/src/grotesque/data/grotesque_icon.png $startdir/pkg/usr/lib/python2.6/site-packages/grotesque/data

}

#http://standards.freedesktop.org/menu-spec/latest/apa.html
