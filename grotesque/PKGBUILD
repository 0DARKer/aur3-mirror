# Contributor: Eric Forgeot < http://ifiction.free.fr >
pkgname=grotesque
pkgver=0.9
pkgrel=1
pkgdesc="A utility that helps you manage your collection of interactive fiction, or text adventures."
arch=(i686 x86_64)
url="http://grotesque.sourceforge.net/"
license=('gpl')
depends=('pygtk' 'gtk2')
groups=()
source=(http://downloads.sourceforge.net/grotesque/${pkgname}-${pkgver}-gtk2.tar.gz)

md5sums=('24d339268eef7d999792039e5dbd5a14')


build() {
  cd $srcdir/${pkgname}-${pkgver}
  python2 setup.py bdist
  cd $startdir/pkg
  
  tar xvfz $srcdir/${pkgname}-${pkgver}/dist/${pkgname}-${pkgver}.linux-${arch}.tar.gz
  #mkdir $startdir/pkg/usr/lib/python2.7/site-packages/grotesque/data
  cp $srcdir/${pkgname}-${pkgver}/src/grotesque/data/grotesque_icon.png $startdir/pkg/usr/lib/python2.7/site-packages/grotesque/data

}

#http://standards.freedesktop.org/menu-spec/latest/apa.html
