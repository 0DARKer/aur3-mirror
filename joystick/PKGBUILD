# Maintainer: Jozef Riha <jose1711 at gmail dot com>

pkgname=joystick
pkgver=2.4.21
pkgrel=1
url="http://packages.debian.org/lenny/joystick"
arch=('i686')
pkgdesc="set of testing and calibration tools for joysticks (including force feedback settings)"
license=('GPL')
depends=('sdl')
source=("http://ftp.de.debian.org/debian/pool/main/j/joystick/joystick_20051019.orig.tar.gz" "http://ftp.de.debian.org/debian/pool/main/j/joystick/joystick_20051019-5.diff.gz")
conflicts=('joyutils')
md5sums=('47ff93fba6d94defc1b0dc3f8ff5a5ff'
         '76cba5d7858eb33dff2750fc39fe1a1d')

build() {
	cd $srcdir
	patch -p0 < joystick_20051019-5.diff
	cd $srcdir/joystick-20051019.orig/utils
	make
}

package() {
	mkdir -p $pkgdir/usr/share/man/man1/
	cd $srcdir/joystick-20051019.orig/utils
	for file in evtest ffcfstress ffmvforce ffset fftest inputattach jscal jstest
		do
		install -Dm 755 ./${file} $pkgdir/usr/bin/${file}
		done
	
	install -Dm 644 ../debian/{evtest,inputattach,jscal,jstest}.1 $pkgdir/usr/share/man/man1/
}
