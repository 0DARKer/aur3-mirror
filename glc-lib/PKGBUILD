# Maintainer: Jonathan Liu <net147@gmail.com>
pkgname=glc-lib
pkgver=2.0.0
pkgrel=1
pkgdesc="OpenGL Library Class"
arch=('i686' 'x86_64')
url="http://www.glc-lib.net/"
license=('LGPL')
depends=('mesa' 'qt')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/GLC_lib_$pkgver/GLC_lib_src_$pkgver.zip")
md5sums=('d19e21fd3138cb012d932b81fd694811')

build() {
  cd "$srcdir/GLC_lib_src_$pkgver/glc_lib"
  qmake
  make
}

package() {
  cd "$srcdir/GLC_lib_src_$pkgver/glc_lib"
  make INSTALL_ROOT="$pkgdir" install
}

