# Maintainer: Sebastian Wiesner <lunaryorn@googlemail.com>
pkgname=simfy
pkgver=1.3.5
pkgrel=2
pkgdesc="Desktop application for simfy.de"
arch=('i686')
url="http://www.simfy.de"
license=('Commercial')
depends=('adobe-air-sdk')
makedepends=()
optdepends=()
source=('http://static.simfy.de/downloads/desktop/simfy_player.zip'
        simfy simfy.desktop)
md5sums=('9a1a1f6975e35c78ab84ea5fa3541f4e'
         '9fe000cbbde815128278c8be014d62ee'
         'cd548d107652c8b5d18fb03b59e0d361')

build() {
  cd "${srcdir}"
  ar x "simfy_${pkgver}.deb" "data.tar.gz"
  tar xzf data.tar.gz -C "${pkgdir}"
  rm "${pkgdir}/opt/simfy/bin/simfy"
  rm -r "${pkgdir}/etc/opt"
  rm -r "${pkgdir}/usr/share"
  install -D -m755 simfy "${pkgdir}/usr/bin/simfy"
  install -D -m644 simfy.desktop "${pkgdir}/usr/share/applications/simfy.desktop"
}

# vim:set ts=2 sw=2 et:
