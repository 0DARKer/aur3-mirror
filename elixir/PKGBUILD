# Maintainer: Gilbert Kennen <gilbert firewatcher org>
pkgname=elixir
pkgver=0.12.5
pkgrel=1
pkgdesc="a functional meta-programming aware language built on top of the Erlang VM"
url="http://elixir-lang.org"
arch=('any')
license=('Apache' 'custom:EPL')
depends=('erlang')
conflicts=()
replaces=()
backup=()
source=("https://github.com/elixir-lang/elixir/tarball/v${pkgver}")
sha512sums=('7715953be9e56f7ffd47a8273c952ff4d3dca4876603693a85062efd6882dd7d9ce979ab8e6145a94c732657d8a32cb95865023d728f1d2e4b8590540c10a2ff')

_src_files_dir="elixir-lang-elixir"

build() {
  cd "${srcdir}/${_src_files_dir}"*
  make
}

check() {
  cd "${srcdir}/${_src_files_dir}"*
  make test_erlang
} 

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"
  cd "${srcdir}/${_src_files_dir}"*
  cp {LEGAL,LICENSE} "${pkgdir}/usr/share/licenses/${pkgname}"
  mkdir -p "${pkgdir}/usr"
  cp -r {"bin","lib"} "${pkgdir}/usr"
  rm ${pkgdir}/usr/bin/*.bat
}
