# Maintainer: Gilbert Kennen <gilbert firewatcher org>
pkgname=elixir
pkgver=1.0.0_rc1
pkgrel=1
pkgdesc="a functional meta-programming aware language built on top of the Erlang VM"
url="http://elixir-lang.org"
arch=('any')
license=('Apache' 'custom:EPL')
depends=('erlang-nox')
conflicts=()
replaces=()
backup=()
_tmppkgver=1.0.0-rc1
source=("https://github.com/elixir-lang/elixir/tarball/v${_tmppkgver}")
sha512sums=('481aa112991b7ea94a2d3af448970298dad175bcf613979131f2e1af6acbe9e125061d30788faa1c2e3d80628bc3e5dcd40ec7adec79c80d79e9afa6b8be43b1')

prepare() {
  ELIXIR_SRC_DIR=${srcdir}/$(tar "-tzf${srcdir}/v${_tmppkgver}" | grep -o '^[^/]\+' | sort -u)
}

build() {
  cd $ELIXIR_SRC_DIR
  make
}

check() {
  cd $ELIXIR_SRC_DIR
  make test_erlang
} 

package() {
  mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"

  local ELIXIR_SRC_DIR=${srcdir}/$(tar "-tzf${srcdir}/v${_tmppkgver}" | grep -o '^[^/]\+' | sort -u)
  cd $ELIXIR_SRC_DIR

  cp {LEGAL,LICENSE} "${pkgdir}/usr/share/licenses/${pkgname}"

  make DESTDIR=$pkgdir PREFIX=/usr install
}
