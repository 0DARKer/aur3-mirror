# Maintainer: Gilbert Kennen <gilbert firewatcher org>
pkgname=elixir
pkgver=1.0.1
pkgrel=1
pkgdesc="a functional meta-programming aware language built on top of the Erlang VM"
url="http://elixir-lang.org"
arch=('any')
license=('Apache' 'custom:EPL')
depends=('erlang-nox')
conflicts=()
replaces=()
backup=()
source=("https://github.com/elixir-lang/elixir/tarball/v${pkgver}")
sha512sums=('f3c27128cb1fe5b82254c76b0376093abe35fb3503eacca4eae2209514dda5fedab05d011336f5eebc2b51e7e3dd01adb29018f6439610f3ebf0ffdefd15d94e')

prepare() {
  ELIXIR_SRC_DIR=${srcdir}/$(tar "-tzf${srcdir}/v${pkgver}" | grep -o '^[^/]\+' | sort -u)
}

build() {
  cd $ELIXIR_SRC_DIR
  make
}

check() {
  cd $ELIXIR_SRC_DIR
  make test_erlang
} 

package() {
  mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"

  local ELIXIR_SRC_DIR=${srcdir}/$(tar "-tzf${srcdir}/v${pkgver}" | grep -o '^[^/]\+' | sort -u)
  cd $ELIXIR_SRC_DIR

  install -Dm644 {LEGAL,LICENSE} "${pkgdir}/usr/share/licenses/${pkgname}"

  make DESTDIR=$pkgdir PREFIX=/usr install
}
