# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-apache-session
pkgver=1.89
pkgrel=1
pkgdesc="A persistence framework for session data"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~chorny/Apache-Session-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-test-deep')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/C/CH/CHORNY/Apache-Session-$pkgver.tar.gz")
md5sums=('a21d1fbb30723e8d155c1936c7d9a37c')

build() {
	cd "$srcdir/Apache-Session-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Apache-Session-$pkgver"
	make install DESTDIR="$pkgdir"
}
