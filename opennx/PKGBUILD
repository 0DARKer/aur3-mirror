pkgname=opennx
pkgver=0.16
pkgrel=1
pkgdesc="A GPL replacement for the NoMachine client"
url="http://opennx.sf.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('wxgtk' 'opensc' 'cups' 'libcups' 'libxext' 'libxft' 'nx-common' 'xorg-xauth')
conflicts=('nxclient')
install=('opennx.install')
source=(http://dl.sourceforge.net/project/opennx/opennx/$pkgver/opennx-$pkgver.tar.gz)
md5sums=('0a6ad54fbbbb645e2a332b6e92885c5b')

build() {
  cd $srcdir/opennx-$pkgver

  ./configure --prefix=/opt/NX
  make || return 1
  make DESTDIR=${pkgdir} install || return 1

}