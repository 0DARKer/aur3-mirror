# TinyFugue Devel

pkgname=tf
pkgver=50b8
pkgrel=1
pkgdesc="A screen-oriented MUD client"
url="http://tinyfugue.sourceforge.net/"
depends=('ncurses' 'pcre' 'zlib' 'openssl')
source=(http://downloads.sourceforge.net/sourceforge/tinyfugue/$pkgname-$pkgver.tar.gz)
md5sums=('3e994e791966d274f63b0e61abf2ef59')
license="GPL"

build() {
  cd $startdir/src/$pkgname-$pkgver
  mkdir -p $startdir/pkg/usr/{bin,share/tf-lib}
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
} 
