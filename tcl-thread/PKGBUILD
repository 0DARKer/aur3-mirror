# maintainer: Mihai Militaru <mihai dot militaru at xmpp dot ro>

pkgname=tcl-thread
_realname=thread
pkgver=2.6.6
pkgrel=1
pkgdesc="The Tcl Thread extension"
arch=('i686' 'x86_64')
license=('custom')
url="http://tcl.sourceforge.net/"
depends=('tcl')
source=(http://downloads.sourceforge.net/project/tcl/Thread%20Extension/${pkgver}/${_realname}${pkgver}.tar.gz)
md5sums=('c7f72f5af1262e5427fcab903358f942')

build() {
	cd ${srcdir}/${_realname}${pkgver}
	./configure --sysconfdir=/etc --prefix=/usr --enable-threads --with-tcl=/usr/lib || return 1
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
	rm -rf ${pkgdir}/usr/bin || return 1
	rm -rf ${pkgdir}/usr/include || return 1
	install -Dm644 license.terms "$pkgdir/usr/share/licenses/$pkgname/LICENSE" || return 1
}
