pkgname=pyalienfx
realname=pyAlienFX
pkgver=v1.0.2
pkgrel=1
pkgdesc="Multiplataform software to control Alienware LED's written in Python2"
arch=('any')
url="http://code.google.com/p/pyalienfx/"
license="GPLv3"
depends=(python2 pygtk gksu)

source=(http://pyalienfx.googlecode.com/files/$realname-$pkgver.tar.gz)
md5sums=('33b2abb3ad56ec5618a1f68698c49a43')


build() {
  tar -xvf $realname-$pkgver.tar.gz
  mkdir -p $pkgdir/opt/
  mkdir -p $pkgdir/usr/
  mkdir -p $pkgdir/usr/bin
}

 package() {
 cd ${srcdir}
 cp pyalienfx -R $pkgdir/opt/pyAlienFX
 cd ${pkgdir}/usr/bin
 echo "cd /opt/pyAlienFX
 gksu python2 /opt/pyAlienFX/pyAlienFX.py" > pyAlienFX
 chmod a+x pyAlienFX
 }
