# Contributor: Xavier de Labouret <arch@2-lab.net>
pkgname=elephants
pkgver=2007.02.17
pkgrel=2
pkgdesc="Save giraffes while jumping on a rolled up squirrel! Watch out for the angry natives"
arch=('i686')
url="http://www.imitationpickles.org/elephant/index.html"
licence=('free')
depends=('python-pygame')
source=(http://www.imitationpickles.org/elephant/elephant.tgz)
md5sums=('cf0e43d77da92e1e6ebc18e3b7aaacde')

build()
{
	cd $startdir
	#python setup.py install --root=$startdir/pkg

	mkdir -p $startdir/pkg/usr/share/pixmaps
	mkdir -p $startdir/pkg/usr/share/applications
	#mkdir -p $startdir/pkg/usr/share/elephants

	install -D -m644 $startdir/elephants.png $startdir/pkg/usr/share/pixmaps
	install -D -m644 $startdir/elephants.desktop $startdir/pkg/usr/share/applications/
	cp -R $startdir/src/elephant/ $startdir/pkg/usr/share/elephants
	touch $startdir/pkg/usr/share/elephants/elephant.hs
	chmod 666 $startdir/pkg/usr/share/elephants/elephant.hs
}
