
# Maintainer: RunningDroid <rningdrd AT tormail DOT org>

pkgname=libswift
pkgver="6.1"
_versuffix="ubuntu1"
pkgrel=1
pkgdesc="The multiparty transport protocol"
arch=('i686' 'x86_64')
url="http://libswift.org"
license=('LGPL')
makedepends=('libevent')

if [ "$CARCH" = x86_64 ]
then
  source=('http://dl.tribler.org/tribler-swift_'$pkgver''$_versuffix'_amd64.deb')
  md5sums=('a030057632ae8dedf7c1bee4ca454925')
else
  source=('http://dl.tribler.org/tribler-swift_'$pkgver''$_versuffix'_i386.deb')
  md5sums=('19689f2ffe12d6c7ebc8de22354549a0')
fi

package() {
  cd "$srcdir"
  ar vx tribler-swift*.deb
  tar -xzf data.tar.gz
  cd $pkgdir
  install -D "$srcdir"/usr/lib/tribler/swift usr/bin/swift
  
  mkdir -p usr/share/doc/libswift
  cp -R "$srcdir"/usr/share/doc/tribler-swift/* usr/share/doc/libswift 
  #install -Dd "$srcdir"/usr/share/doc/tribler-swift usr/share/doc/libswift
}

# vim:set ts=2 sw=2 et:
