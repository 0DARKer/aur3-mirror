# Maintainer: RunningDroid <runningdroid AT zoho.com>

pkgname=libswift
pkgver="6.3.1"
pkgrel=1
pkgdesc="The multiparty transport protocol"
arch=('i686' 'x86_64')
url="http://libswift.org"
license=('LGPL')
depends=('libevent')

if [ "$CARCH" = x86_64 ]
then
  source=("https://github.com/Tribler/tribler/releases/download/v${pkgver}/tribler-swift_${pkgver}_amd64.deb")
  md5sums=('473860a9147feb8dc1319526514c4f1f')
else
  source=("https://github.com/Tribler/tribler/releases/download/v${pkgver}/tribler-swift_${pkgver}_i386.deb")
  md5sums=('f5fb7411fed26074fee59409f1525bd5')
fi

package() {
  cd "$srcdir"
  tar -xzf data.tar.gz

  cd "$pkgdir"
  install -D "$srcdir"/usr/lib/tribler/swift usr/bin/swift

  mkdir -p usr/share/doc/libswift
  cp -R "$srcdir"/usr/share/doc/tribler-swift/* usr/share/doc/libswift
  #install -Dd "$srcdir"/usr/share/doc/tribler-swift usr/share/doc/libswift
}

# vim:set ts=2 sw=2 et:
