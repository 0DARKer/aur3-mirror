# Maintainer: Artem A. Klevtsov <unikum.pm@gmail.com>

pkgname=qtperf
pkgver=0.1
pkgrel=1
pkgdesc="Application designed to test QT performance"
arch=('i686' 'x86_64')
url="http://gentoo-overlays.zugaina.org/stuff/portage/app-benchmarks/qtperf/qtperf-0.1.ebuild"
license=('custom')
depends=('qt')
source=("http://www.corecrowd.com/${pkgname}.tar.bz2")
md5sums=('0afcbeec09b4db08474151055fe3c5cb')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  qmake ../${pkgname}/${pkgname}.pro
  make
}

package() {
  install -Dm755 "${srcdir}/build/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}