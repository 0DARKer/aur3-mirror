# Maintainer: Stefano Facchini <stefano.facchini@gmail.com>

pkgname=coverama
pkgver=0.1
pkgrel=1
pkgdesc="Coverama is a screensaver showing rotating cover art pictures."
depends=('gnome-screensaver' 'gtkglext')
makedepends=()
provides=('coverama')
arch=('i686' 'x86_64')
license=('GPL2')
url="http://coverama.sourceforge.net"

source=(https://downloads.sourceforge.net/project/coverama/coverama.tar.bz2)

md5sums=('3146835ac854c0f5e33cb1b64787bc67')


build() {

  cd $srcdir/coverama

  ./build.sh

}


package() {

  cd $srcdir/coverama

  DESTDIR=$pkgdir ./install.sh

}

