# Contributor: zlowly <zlowly@gmail.com>
pkgname=firefox-i18n-zh-cn
pkgver=3.6.15
pkgrel=1
pkgdesc="simplified chinese language pack for Firefox"
arch=(any)
url="http://www.mozilla.org/projects/firefox"
depends=("firefox>=${pkgver}")
license=('MPL')
_language=zh-CN
conflicts=(mozilla-firefox-${_language} firefox-${_language})
source=(http://releases.mozilla.org/pub/mozilla.org/firefox/releases/${pkgver}/linux-i686/xpi/${_language}.xpi)
md5sums=('e499d4e518c9763fc9748f27039d28a7')
build() {
  cd ${srcdir}
  sed -i "s|jar:chrome/${_language}.jar|jar:${_language}.jar|" chrome.manifest || return 1
  install -D -m 644 chrome/${_language}.jar ${pkgdir}/usr/lib/firefox-3.6/chrome/${_language}.jar || return 1
  install -D -m 644 chrome.manifest ${pkgdir}/usr/lib/firefox-3.6/chrome/${_language}.manifest || return 1
}
# vim:set ts=2 sw=2 et:
