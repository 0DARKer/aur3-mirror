# Contributor: zlowly <zlowly@gmail.com>
pkgname=firefox-i18n-zh-cn
pkgver=4.0
pkgrel=1
pkgdesc="simplified chinese language pack for Firefox"
arch=(any)
url="http://www.mozilla.com/"
depends=("firefox>=${pkgver}")
license=('MPL')
_language=zh-CN
conflicts=(mozilla-firefox-${_language} firefox-${_language})
noextract=(${_language}.xpi)
source=(ftp://ftp.mozilla.org/pub/mozilla.org/firefox/releases/${pkgver}/linux-i686/xpi/${_language}.xpi)
md5sums=('488c1de2737599a72a3662f9e61b7583')
build() {
  cd ${srcdir}
  install -d "$pkgdir/usr/lib/firefox-4.0/extensions/"
  install -m644 ${_language}.xpi "$pkgdir/usr/lib/firefox-4.0/extensions/langpack-${_language}@firefox.mozilla.org.xpi"
}
# vim:set ts=2 sw=2 et:
