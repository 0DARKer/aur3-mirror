# Contributor: Andreas Hauser <andy-aur@splashground.de>
pkgname=jakarta-commons-cli-bin
pkgver=1.0
pkgrel=1
pkgdesc="provides an API for processing command line interfaces for Java"
arch=(x86_64)
url="http://jakarta.apache.org/commons/cli/"
license="Apache License 1.1"
depends=(jre)
makedepends=()
conflicts=()
replaces=()
source=(http://ftp.uni-erlangen.de/pub/mirrors/apache/jakarta/commons/cli/binaries/cli-$pkgver.tar.gz)

build() {
  cd $startdir/src
  mkdir -p $startdir/pkg/usr/share/java
  install commons-cli-$pkgver/commons-cli-$pkgver.jar $startdir/pkg/usr/share/java/commons-cli-$pkgver.jar
}

md5sums=('6c28bdee998fe4d9e76c7cf40e7f4691')
