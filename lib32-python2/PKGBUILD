# AUR packages should not be built from binaries. This is a workaround.
# If you manage to built this lib32 package from source, let the maintainer know
# and you will be helping the AUR community.

_pkgbasename=python2
pkgname=lib32-$_pkgbasename
pkgver=2.7.1
pkgrel32=4
pkgrel=1
pkgdesc="A high-level scripting language (32 bit, libraries only)"
arch=('x86_64')
url="http://www.python.org/"
license=('LGPL')
depends=('lib32-db' 'lib32-bzip2' 'lib32-gdbm' 'lib32-openssl' 'lib32-zlib' 'lib32-expat'
		 'lib32-sqlite3' 'lib32-libffi' "${_pkgbasename}=${pkgver}-${pkgrel32}")
source=("ftp://ftp.archlinux.org/extra/os/i686/${_pkgbasename}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz")
md5sums=('47d6c68072e20ae2b853eaa4ecfbf62a')

build() {
  return 0
}

package() {
  mkdir -p $pkgdir/usr/lib32
  cp -R $srcdir/usr/lib/* $pkgdir/usr/lib32
  sed -i -e 's#libdir=${exec_prefix}/lib#libdir=${exec_prefix}/lib32#' $pkgdir/usr/lib32/pkgconfig/*.pc
}
