# Maintainer: Malte Rabenseifner <mail@malte-rabenseifner.de>

pkgname="teamspeak3-server"
pkgver="3.0.3"
pkgrel=1
pkgdesc="A flexible, powerful, scalable software which enables people to speak with one another over the Internet"
arch=('i686' 'x86_64')

if [ "$CARCH" == "x86_64" ]; then
  _TSARCH='amd64'
  _TSMD5='b15613ca930b0362032983d64f333a94'
else
  _TSARCH='x86'
  _TSMD5='50d12cebc4d5165a0ef0d957c7e0132a'
fi

url="http://www.teamspeak.com/"
license=('custom')
backup=('etc/conf.d/teamspeak3-server')
install="teamspeak3-server.install"
source=("http://ftp.4players.de/pub/hosted/ts3/releases/${pkgver}/teamspeak3-server_linux-${_TSARCH}-${pkgver}.tar.gz"
        'teamspeak3-server.conf.d'
        'teamspeak3-server.rc.d'
        'teamspeak3-server.sh')
md5sums=(${_TSMD5}
         'e742aa2f8091a0a61c80ca9c06d40db9'
         '19c2ea8347953f55e566592904f789db'
         '2b33b2826d998eae74ef9bce5fd68985')

build() {
    cd "$srcdir"

    # change startscripts to correct arch
    if [ $CARCH == "x86_64" ]; then
        sed -i 's/x86/amd64/' 'teamspeak3-server.sh'
        sed -i 's/x86/amd64/' 'teamspeak3-server.rc.d'
    fi
}

package() {
    cd "$srcdir"
    
    #create folders
    install -d "$pkgdir/usr/share/licenses/$pkgname"
    install -d "$pkgdir/opt/"
    install -d "$pkgdir/etc/conf.d/"
    install -d "$pkgdir/etc/rc.d/"
    install -d -m 0750 "$pkgdir/var/lib/$pkgname"
    install -d -m 0755 "$pkgdir/var/log/$pkgname"
    install -d "$pkgdir/usr/bin/"
    
    #copy files 
    install -T -m 644 "teamspeak3-server_linux-${_TSARCH}/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -T -m 644 "teamspeak3-server.conf.d" "$pkgdir/etc/conf.d/teamspeak3-server"
    install -T -m 755 "teamspeak3-server.rc.d" "$pkgdir/etc/rc.d/teamspeak3-server"
    install -T -m 755 "teamspeak3-server.sh" "$pkgdir/usr/bin/teamspeak3-server"
    mv "${pkgname}_linux-${_TSARCH}" "$pkgdir/opt/teamspeak3-server"
}

# vim:set ts=2 sw=2 et:
