post_install() {
    groupadd -r teamspeak
    useradd -r -g teamspeak -d /var/lib/teamspeak3-server -s /bin/false teamspeak
    chown teamspeak:root /var/log/teamspeak3-server/
    chown -R teamspeak:teamspeak /var/lib/teamspeak3-server/
}

post_remove() {
    userdel -r teamspeak > /dev/null
    groupdel teamspeak > /dev/null
}

