# Maintainer: Nathan O <ndowens.aur at gmail dot com>
pkgname=tweetdeck
pkgver=0_36.1
pkgrel=2
pkgdesc="An Adobe Air desktop application for twitter that looks to capture the abundance of social media and display it in a unique columned user interface. "
arch=(i686 x86_64)
url="http://www.tweetdeck.com/"
license=('unknown')
if [ "$CARCH" = "i686" ]; then
	depends=('adobe-air' 'libcanberra-gtk' 'libgnome-keyring')
fi

if [ "$CARCH" = "x86_64" ]; then
	depends=('bin32-adobe-air' 'lib32-libxt' 'lib32-libxtst' 'lib32-libgnome-keyring')
fi

source=(http://downloads.tweetdeck.com/TweetDeck_${pkgver}.air tweetdeck.desktop tweetdeck.sh)
md5sums=('b945ec2f13ace264ff3a027a1ca26088'
         '0e31c516272f70a9254907b801be5cef'
         '0a9c12570d07eff84cc77ed420d3d4d8')



build()
{
   cd ${srcdir}
   install -d ${pkgdir}/{/usr/{bin,share/{applications,pixmaps}},/opt/tweetdeck}
   install -Dm644 icons/TweetDeck_48.png ${pkgdir}/usr/share/pixmaps/tweetdeck
   install -Dm644 TweetDeck_${pkgver}.air ${pkgdir}/opt/${pkgname}/tweetdeck.air
   install -Dm755 ${pkgname}.sh ${pkgdir}/usr/bin/tweetdeck

   install -Dm644 tweetdeck.desktop ${pkgdir}/usr/share/applications/tweetdeck.desktop
}

