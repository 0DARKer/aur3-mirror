# Maintainer: dongfengweixiao <dongfengweixiao at gmail a-dot com>

pkgname=maxthon-browser
pkgver=0.8.0.22
pkgrel=2
pkgdesc="A browser that combines a minimal design with sophisticated technology to make the web faster, safer, and easier.TIPS：本版本需要验证激活才能测试，你可以加傲游Linux版体验群：304417046，加群时请注明：傲游Linux版。"
arch=('i686' 'x86_64')
url="http://www.maxthon.cn/"
license=('NULL')
depends=('libxrandr' 'libxrender' 'libxss' 'libxext' 'glibc' 'glib2' 'atk' 'pango' 'gdk-pixbuf2' 'cairo' 'freetype2' 'fontconfig' 'nss' 'nspr' 'gconf' 'dbus' 'glibc' 'libxcomposite' 'alsa-lib' 'libxdamage' 'libxfixes' 'libcups' 'libgcrypt' 'expat' 'gcc-libs' 'glibc' 'pcre' 'libffi' 'libxinerama' 'libxi' 'libxcursor' 'glib2' 'harfbuzz' 'libpng' 'pixman' 'zlib' 'bzip2' 'nspr' 'dbus-glib' 'krb5' 'e2fsprogs' 'gnutls' 'avahi' 'glibc' 'libgpg-error' 'libxau' 'libxdmcp' 'glibc' 'graphite' 'libx11' 'wayland' 'mesa' 'systemd' 'libdrm' 'libxcb' 'libxxf86vm' 'krb5' 'keyutils' 'p11-kit' 'libtasn1' 'nettle' 'gmp')
options=('!emptydirs' '!strip')
install=$pkgname.install

_arch=i386
[ "$CARCH" = 'x86_64' ] && _arch=amd64
  source=("maxthon_${pkgver}_${_arch}_cn.deb::http://dl.maxthon.cn/mx_linux/package/maxthon_${pkgver}_${_arch}_cn.deb")
  md5sums=('040b1a295e5caa4052e94b314126791b')
[ "$CARCH" = 'x86_64' ] && md5sums[0]='578efaeb0e0f38e52b9c0ad913b1743d'

package() {
  msg2 "Extracting the data.tar.gz"
  bsdtar -xf data.tar.gz -C "$pkgdir/"
  
  msg2 "Setting sandbox system permissions"
  chown root:root "$pkgdir"/opt/maxthon/maxthon_sandbox
  chmod 4755 "$pkgdir"/opt/maxthon/maxthon_sandbox
  
  msg2 "Registered the icon resource"
  for i in 22 24 32 48 64 128 256; do
  install -Dm644 "$pkgdir"/opt/maxthon/product_logo_${i}.png "$pkgdir"/usr/share/icons/hicolor/${i}x${i}/apps/maxthon-browser.png
  done
  
  mkdir -p "$pkgdir"/etc/default/maxthon.d/
  cat "$pkgdir"/opt/maxthon/Default/pn > "$pkgdir"/etc/default/maxthon.d/pn
  
  msg2 "Symlinking missing Udev lib"
  ln -s /usr/lib/libudev.so.1 "$pkgdir"/opt/maxthon/libudev.so.0
  
  msg2 "Removing the duplicated images、desktop file & others"
  rm "$pkgdir"/opt/maxthon/product_logo_*.png
  rm "$pkgdir"/opt/maxthon/maxthon-browser.desktop
  rm "$pkgdir"/opt/maxthon/plugins/libaliedit32.so
}
