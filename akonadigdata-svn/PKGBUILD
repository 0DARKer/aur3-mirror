# Maintainer: whites11 <whites11@gmail.com>
pkgname=akonadigdata-svn
pkgver=46
pkgrel=1
pkgdesc="Akonadi resource to sync google contacts with kaddressbook"
arch=('i686' 'x86_64')
url="http://code.google.com/p/akonadigdata"
license=('GPL2')
depends=('libgdata-cpp-svn>=71')
conflicts=('')
provides=('')
makedepends=('svn' 'cmake')
source=()
md5sums=()

_svnmod="akonadigdata"
_svntrunk="http://akonadigdata.googlecode.com/svn/trunk/"

build() {
  cd "$srcdir/"
  msg "Getting source..."
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Creating make environment..."
  rm -rf $srcdir/$_svnmod/build/*
  mkdir $srcdir/$_svnmod/build
  cd $srcdir/$_svnmod/build

  msg "Starting make..."

  cmake -D CMAKE_INSTALL_PREFIX=/usr ..
  make || return 1
  make DESTDIR="$pkgdir/" install
}

