# Contributor: Gadget3000 <Gadget3000@msn.com>
pkgname=mp3check
pkgver=0.8.4
pkgrel=2
pkgdesc="Check mp3 files for consistency plus fix header and id3tag errors"
arch=('i686' 'x86_64')
url="http://jo.ath.cx/soft/mp3check/"
license=('GPL')
source=(http://jo.ath.cx/soft/mp3check/mp3check-${pkgver}.tgz)
md5sums=(dcaf1926463d5dfb81bd8a96cd3f9ceb)
depends=(gcc-libs)
build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  install -D -m755 mp3check ${pkgdir}/usr/bin/mp3check
}
