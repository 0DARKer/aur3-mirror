#Maintainer: M0Rf30

_pkgname=gnome-multi-writer
pkgname=${_pkgname}-git
pkgver=72.6940b70
pkgrel=1
pkgdesc="GNOME MultiWriter can be used to write an ISO file to multiple USB devices at 	once"
arch=('i686' 'x86_64')
url="http://blogs.gnome.org/hughsie/2015/01/02/introducing-gnome-multiwriter/"
license=('GPL2')
depends=('gnome-common' 'libgusb-stable')
makedepends=('git' 'intltool' 'yelp-tools')
source=(${_pkgname}::git+https://github.com/hughsie/${_pkgname}.git)
install=$_pkgname.install

build() {
  cd $srcdir/${_pkgname}
  aclocal
  autoreconf -i
  libtoolize
  intltoolize
#  automake --add-missing 
  ./configure --prefix=/usr
  make
}

package(){
  cd $srcdir/${_pkgname}
  make DESTDIR=$pkgdir install
  make DESTDIR=$pkgdir install-data
}

pkgver() {
  cd $srcdir/${_pkgname}
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

md5sums=('SKIP')
