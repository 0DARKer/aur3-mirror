# Contributor: Cilyan Olowen <gaknar@gmail.com>

pkgname=python-poppler
pkgver=0.12.1
pkgrel=4
pkgdesc="Python bindings for Poppler"
arch=(i686 x86_64)
url="https://launchpad.net/poppler-python"
license=('GPL')
depends=('pygtk>=2.10.0' 'poppler-glib>=0.10')
options=('!libtool')
source=("http://launchpad.net/poppler-python/trunk/development/+download/pypoppler-${pkgver}.tar.gz")
md5sums=('1a89e5ed3042afc81bbd4d02e0cf640a')

build() {
  cd "$srcdir/pypoppler-$pkgver"
  export PYTHON="python2"

  ./configure --prefix=/usr\
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "$srcdir/pypoppler-$pkgver"

  make install DESTDIR="$pkgdir/"
}
