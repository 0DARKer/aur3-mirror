# Maintainer: Alexej Magura <agm2819*gmail*>
#
#
pkgname=zbatt
_realname=zelda-battery
pkgver=3.0.1
pkgrel=3
pkgdesc="A Legend of Zelda like health-bar battery meter for Shell prompts and Taskbars"
arch=('i686' 'x86_64')
url="https://github.com/amagura/zelda-battery"
license=('Apache')
depends=('gtk2' 'python2')
source=("https://github.com/amagura/zelda-battery/archive/v${pkgver}.tar.gz")
md5sums=('c4c7f9ce00dedf4739151cf390f45f49')


prepare () {
  cd "$srcdir/$_realname-$pkgver"
  autoreconf -i
  ./configure --prefix=/usr
}

build () {
  cd "$srcdir/$_realname-$pkgver"
  make
}

package () {
  cd "$srcdir/$_realname-$pkgver"
  make DESTDIR="$pkgdir" install
}
