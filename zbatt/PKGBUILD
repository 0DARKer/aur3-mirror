# Maintainer: Alexej Magura <agm2819*gmail*>
#
#
pkgname=zbatt
_realname=zelda-battery
pkgver=1.2
pkgrel=1
pkgdesc="A Legend of Zelda like health-bar battery meter for the command-line"
arch=('i686' 'x86_64')
url="https://github.com/amagura/zelda-battery"
license=('Apache')
depends=('libacpi glibc')
source=("https://github.com/amagura/zelda-battery/archive/v${pkgver}.tar.gz")
md5sums=('72b2ffc62436c324eaa6bad10a100bbc')


prepare () {
  cd "$srcdir/$_realname-$pkgver"
  autoreconf -fi
  ./configure --prefix=/usr
}

build () {
  cd "$srcdir/$_realname-$pkgver"
  make
}

package () {
  cd "$srcdir/$_realname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm 644 "$srcdir/$_realname-$pkgver"/COPYING "$pkgdir"/usr/share/licenses/zbatt/LICENSE
}
