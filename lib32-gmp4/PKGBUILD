#Contributor:Xemertix <arch88(at)katamail(dot)com>
#based on allan pkgbuild

pkgname=lib32-gmp4
pkgver=4.3.2
pkgrel=1
pkgdesc="Legacy version of gmp.  Provides libgmp.so.3 (32 bit)"
arch=('x86_64')
url="http://gmplib.org/"
depends=('gcc-libs' 'sh')
license=('LGPL3')
options=(!libtool)
install=gmp.install
source=(ftp://ftp.gnu.org/gnu/gmp/gmp-${pkgver}.tar.bz2)
md5sums=('dd60683d7057917e34630b4a787932e8')

build() {
  local pkgname="gmp"
  local pkgdir2="${srcdir}/${pkgname}-${pkgver}.obj"
  mkdir "$pkgdir2"
  cd "${srcdir}/${pkgname}-${pkgver}"

  export ABI="32"
  export CC="gcc -m32"
  export CXX="g++ -m32"
  ./configure --build=$CHOST \
    --prefix=/usr --infodir=/usr/share/info \
    --enable-cxx || return 1
  make || return 1
  make check || return 1
  make DESTDIR="${pkgdir2}" install || return 1

  mkdir -p "${pkgdir}/usr/lib32"
  cp -a "${pkgdir2}/usr/lib"/libgmp.so.3* "${pkgdir}/usr/lib32" || return 1
}
