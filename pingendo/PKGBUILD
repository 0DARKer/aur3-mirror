pkgname=pingendo
pkgver=1.0
pkgrel=1
pkgdesc="An WYSIWYG HTML5 editor supporting Bootstrap 3 UI"
arch=('i686' 'x86_64')
url="http://www.pingendo.com/"
license="GPL"
depends=('libsystemd')
makedepends=('unzip')
source=("http://download.pingendo.com/pingendo-linux-x86_64.zip"
	"pingendo.desktop")

package() {
  mkdir -p "$pkgdir/opt/"

  rm .DS_Store
  ln -sf /usr/lib/libudev.so libudev.so.0

  cp -a "$srcdir" "$pkgdir/opt/$pkgname"

  rm -f "$pkgdir/opt/$pkgname/pingendo.desktop" "$pkgdir/opt/$pkgname/pingendo-linux-x86_64.zip"

  chmod 755 "$pkgdir/opt/$pkgname/Pingendo"
  install -D -m0644 "$srcdir/pingendo.desktop" "$pkgdir/usr/share/applications/pingendo.desktop"
  #mkdir -p "$pkgdir/usr/bin"
  #ln -s "/opt/$pkgname/Pingendo" "$pkgdir/usr/bin/"
}

md5sums=('3c274fbbfb87d1f2bff2f032ac345f97'
         '78090c883f920ead147e1c2a1bb43e96')
