pkgname=hqplayer-embedded
_debpkgver=3.6.1
pkgver=$_debpkgver
pkgrel=2
pkgdesc="Signalyst HQPlayer Embedded
 HQPlayer - the high-end upsampling multichannel software HD-audio player"
arch=('x86_64')
url="http://www.signalyst.com/custom.html"
license=('custom')
depends=('alsa-lib' 'glibc' 'flac' 'gcc-libs' 'libgmpris' 'glib2')
optdepends=('rygel: for network access with upnp')
source=("http://www2.signalyst.com/bins/hqplayerd/hqplayerd_3.6.1-15_amd64.deb" 'copyright' 'hqplayerd@.service')
sha256sums=('9e21e8cfbc943832def368ab9a8f5b4737acb920a761ff4f170978ed19b96a8f' '3f3295916908afbf195993b163d7dc98696dddbc7b2f6574aab9605046dda2c7' '56c7bf7fff55cac1b1ef4f3f95851dae27fb08d4d2f585317c97aee06e47f0c5')

package() {
 cd "$srcdir"
  bsdtar xf data.tar.xz -C "$pkgdir"
  install -Dm644 "copyright" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  install -Dm644 "hqplayerd@.service" \
    "$pkgdir/usr/lib/systemd/system/hqplayerd@.service"
}