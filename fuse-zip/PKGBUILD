# Contributor: xtricman#gmail.com

pkgname=fuse-zip
pkgver=0.3.2
pkgrel=1
pkgdesc="A FUSE file system to navigate, extract, create and modify ZIP archives"
arch=('i686' 'x86_64')
url="http://fuse-zip.googlecode.com"
license=('LGPL3')
depends=('fuse' 'libzip')
source=(${url}/files/${pkgname}-${pkgver}.tar.gz)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	make release
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}

	make INSTALLPREFIX=${pkgdir}/usr install

	ln -s fuse-zip ${pkgdir}/usr/bin/mount.zip
}

md5sums=('04098ab407d90dfe0be0f46c7682c5d4')
sha256sums=('4449f5b398503ab7217595f2cf871bcebf4b769b1e33637df3c024ecbb8e810c')
