# Maintainer: Chuan Ji <jichuan89@gmail.com>

pkgname=jfbpdf
pkgver=20120411
pkgrel=1
pkgdesc="A small framebuffer pdf viewer, forked from FBPDF and based on MuPDF"
arch=('i686' 'x86_64')
url="http://gitorious.org/jfbpdf/"
license=('GPL')
depends=('mupdf')
makedepends=('git')
provides=('jfbpdf')
conflicts=('jfbpdf')
#source=('fbpdf.1')
#md5sums=('1f87fe44bbd2b1a5e520c245497aeb8e')

_gitroot="git://gitorious.org/jfbpdf/jfbpdf.git"
_gitname="jfbpdf"

build(){
  cd "${srcdir}"
  msg "Connecting to GIT server...."
  
  if [[ -d ${_gitname} ]]; then
    cd "${_gitname}"
    git pull origin
    msg "The local files are updated."
  else
    git clone "${_gitroot}"
    cd "${_gitname}"
  fi
  msg "Checkout done or server timeout"
  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"

  cd "${srcdir}/${_gitname}-build"
  msg "Starting make..."
  make
}

package(){
  install -Dm755 "${srcdir}/${_gitname}-build/${_gitname}" "${pkgdir}/usr/bin/${_gitname}"
  # Install man page
  # install -Dm644 "${srcdir}/${_gitname}.1" "$pkgdir/usr/share/man/man1/${_gitname}.1"
}

# vim:set ts=2 sw=2 et:
