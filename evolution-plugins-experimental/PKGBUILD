# Maintainer: Ng Oon-Ee <ngoonee.talk@gmail.com>

pkgname=evolution-plugins-experimental
_pkgname=evolution
pkgver=3.0.2
pkgrel=1
pkgdesc="Additional experimental (unmaintained) plugins for Gnome Evolution - external-editor"
arch=('i686' 'x86_64')
license=('GPL')
depends=("evolution=$pkgver")
makedepends=('gnome-doc-utils>=0.20.1' 'intltool') 
options=('!libtool' '!emptydirs')
url=http://www.gnome.org/projects/evolution/
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgname}/3.0/${_pkgname}-${pkgver}.tar.bz2)
sha256sums=('6fdf6a39a89bb04c406225984e5b730e86a370024f30ef9cf019840be9fbe59a')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib \
      --disable-scrollkeeper \
      --enable-nss=yes \
      --with-openldap=yes \
      --enable-smime=yes \
      --with-krb5=/usr \
      --disable-image-inline
  make
  cd ${srcdir}/${_pkgname}-${pkgver}/plugins/external-editor
  make
  make DESTDIR="${pkgdir}" install
}
