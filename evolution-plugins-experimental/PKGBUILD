# Maintainer: Ng Oon-Ee <n g  o o n  e e AT g m a i l DOT c o m>

pkgname=evolution-plugins-experimental
_pkgname=evolution
pkgver=2.32.2
pkgrel=1
pkgdesc="Additional experimental (unmaintained) plugins for Gnome Evolution - external-editor and face"
arch=('i686' 'x86_64')
license=('GPL')
depends=("evolution=$pkgver")
makedepends=('gnome-doc-utils>=0.20.1' 'intltool') 
options=('!libtool' '!emptydirs')
url=http://www.gnome.org/projects/evolution/
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgname}/2.32/${_pkgname}-${pkgver}.tar.bz2)
sha256sums=('1831c7f5f00b4755869cf84ef3e3f79c4705a33e0659e72b6c1ffa4a59d4a4bb')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib \
      --disable-scrollkeeper \
      --enable-nss=yes \
      --with-openldap=yes \
      --enable-smime=yes \
      --with-krb5=/usr
  make
  cd ${srcdir}/${_pkgname}-${pkgver}/plugins/external-editor
  make
  make DESTDIR="${pkgdir}" install
  cd ${srcdir}/${_pkgname}-${pkgver}/plugins/face
  make
  make DESTDIR="${pkgdir}" install
}
