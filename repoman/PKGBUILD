depends=(python3)
backup=(etc/repoman/json/urls.json)
source=(
  http://xyne.archlinux.ca/projects/repoman/src/repoman-2013.4.8.4.tar.xz
  http://xyne.archlinux.ca/projects/repoman/src/repoman-2013.4.8.4.tar.xz.sig
)
