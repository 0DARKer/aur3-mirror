# Contributor: dragonn <dragonn at op dot pl>

pkgname=obshutdown
pkgver=0.1_beta1
pkgrel=1
pkgdesc='Openbox shutdown manager'
arch=('i686' 'x86_64')
url='http://developer.berlios.de/projects/obshutdown/'
license=('GPL')
depends=('gtk2' 'cairo')
makedepends=('make')
source=("http://download.berlios.de/obshutdown/${pkgname}-${pkgver/_/-}.tar.gz")
sha1sums=('30775bca1f82c5934a128716aa9d1cc76a60b51e')


build() {
	cd "${srcdir}/${pkgname}-${pkgver/_/-}"

	./configure \
		--prefix=/usr 
		
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver/_/-}"
	make DESTDIR="${pkgdir}" install
}
