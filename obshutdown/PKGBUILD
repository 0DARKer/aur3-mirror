# Contributor: dragonn <dragonn at op dot pl>

pkgname=obshutdown
pkgver=0.1_beta1
pkgrel=2
pkgdesc='Openbox shutdown manager'
arch=('i686' 'x86_64')
url='http://developer.berlios.de/projects/obshutdown/'
license=('GPL')
depends=('gtk2' 'cairo')
makedepends=('make')
source=("http://download.berlios.de/obshutdown/${pkgname}-${pkgver/_/-}.tar.gz")
sha1sums=('fa5b6a1869509a7ea15738bffaae074de8b45677')



build() {
	cd "${srcdir}/${pkgname}-${pkgver/_/-}"

	./configure \
		--prefix=/usr 
		
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver/_/-}"
	make DESTDIR="${pkgdir}" install
}
