# Contributor: dragonn <dragonn at op dot pl>

pkgname=obshutdown
pkgver=0.1_beta2
pkgrel=1
pkgdesc='Openbox shutdown manager'
arch=('i686' 'x86_64')
url='http://developer.berlios.de/projects/obshutdown/'
license=('GPL')
depends=('gtk2' 'cairo')
makedepends=('make')
source=("http://download.berlios.de/obshutdown/${pkgname}-${pkgver/_/-}.tar.gz")
sha1sums=('da3839663cff3997f4f2e3a604694089397b50bd')




build() {
	cd "${srcdir}/${pkgname}-${pkgver/_/-}"

	./configure \
		--prefix=/usr 
		
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver/_/-}"
	make DESTDIR="${pkgdir}" install
}
