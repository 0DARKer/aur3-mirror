# Contributor: dragonn <dragonn at op dot pl>

pkgname=obshutdown
_realver=0.1-alpha2
pkgver=0.1_alpha2
pkgrel=1
pkgdesc='Openbox shutdown manager'
arch=('i686' 'x86_64')
url='http://developer.berlios.de/projects/obshutdown/'
license=('GPL')
depends=('gtk2' 'cairo')
makedepends=('make')
source=("http://download.berlios.de/obshutdown/${pkgname}-${_realver}.tar.gz")
sha1sums=('074047ccb3a5c69f20f6ad442bf64b8df8cb2cb3')


build() {
	cd "${srcdir}/${pkgname}-${_realver}"

	./configure \
		--prefix=/usr 
		
	make
}

package() {
	cd "${srcdir}/${pkgname}-${_realver}"
	make DESTDIR="${pkgdir}" install
}
