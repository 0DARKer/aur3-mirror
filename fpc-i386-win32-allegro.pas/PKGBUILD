pkgname=fpc-i386-win32-allegro.pas
pkgver=4.4.4
pkgrel=1
pkgdesc="Allegro.pas is a wrapper to use Allegro with Pascal compilers (i386-win32)"
arch=(any)
url="http://allegro-pas.sourceforge.net"
license=(unknown)
depends=(fpc-i386-win32-rtl)
makedepends=(ppcross386 mingw-w64-binutils)
optdepends=("lib32-mingw-w64-allegro4: Allegro DLL for MinGW-W64 32-bit")
options=(!strip)
source=("http://downloads.sourceforge.net/allegro-pas/allegro.pas-$pkgver-src-pas.tar.bz2")
md5sums=('3fa5e76c67015515c250c2f2c0ff668b')
_fpcvers=`fpc -iV`

build() {
  cd "${srcdir}/allegro.pas/lib"
  for file in `ls *.pas`
  do
    ppcross386 -Twin32 $file
  done
}

package() {
  cd "${srcdir}/allegro.pas/lib"
  find . -name '*.o' -o -name '*.ppu' -o -name '*.rst' -o -name '*.a' -o -name '*.compiled' |
    xargs -rtl1 -I {} install -Dm644 {} "$pkgdir/usr/lib/fpc/$_fpcver/units/i386-win32/"{}
  find $pkgdir -name '*.o' -o -name '*.a' | xargs -rtl1 i686-w64-mingw32-strip -g
}
