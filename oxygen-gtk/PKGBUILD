#Contributor: monshin (rumirand [at] gmail [dot] cl
pkgname=oxygen-gtk
pkgver=1.0.0
pkgrel=1
pkgdesc="Port of the Oxygen theme to gtk"
arch=('i686' 'x86_64')
url="https://projects.kde.org/projects/playground/artwork/oxygen-gtk"
license=('LGPL')
depends=('gtk2')
makedepends=('cmake')
source=(ftp://ftp.kde.org/pub/kde/stable/$pkgname/$pkgver/src/$pkgname-$pkgver.tar.bz2)
md5sums=('441398b4569ce0282c39e5c21cb16dfc')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  rm -rf build
  mkdir build && cd build
    cmake -DCMAKE_INSTALL_PREFIX=/usr ../
    make -j2
    make DESTDIR=$pkgdir install
}
