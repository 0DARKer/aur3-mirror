# Maintainer: pisuka <tekmon@gmail.com>
pkgname=python2-pyalsa
pkgver=1.0.25
pkgrel=1
pkgdesc="Python bindings for ALSA lib"
arch=(any)
url="http://alsa-project.org"
license=(GPL)
groups=()
depends=(python2 alsa-lib)
makedepends=(gcc pyrex)
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(ftp://ftp.alsa-project.org/pub/pyalsa/pyalsa-$pkgver.tar.bz2)
md5sums=(063efe545883f8b89005025460222ee3)

package() {
  cd "$srcdir/pyalsa-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

