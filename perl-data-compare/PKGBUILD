makedepends=()
url='http://search.cpan.org/dist/Data-Compare'
source=('http://search.cpan.org/CPAN/authors/id/D/DC/DCANTRELL/Data-Compare-1.22.tar.gz')
md5sums=('7d471ce482b3a4bcc3f3d29dd23b92ce')
