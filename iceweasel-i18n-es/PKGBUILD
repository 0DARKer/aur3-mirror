#! /bin/bash
# Maintainer: jorge_barroso <jorge.barroso.11@gmail.com>

_lang=es
_debver=19.0.2
_debrel=1
_debrepo=http://ftp.debian.org/debian/pool/main/i/

pkgname=iceweasel-i18n-es
pkgver=$_debver.deb$_debrel
pkgrel=1
pkgdesc="Language Pack for Iceweasel"
arch=('any')
url="http://www.mozilla.com/"
license=('MPL' 'GPL' 'LGPL')
depends=("iceweasel>=$_debver") 
source=("${_debrepo}/iceweasel/iceweasel-l10n-${_lang}-${_lang}_${_debver}-${_debrel}_all.deb")
sha512sums=('0a05270574db9f565ea71e5e23e83fe1d75340318db570db8efac32fe58c2ae2129e79fa4d74aa0b94a6bc26e077858572029b985ff1abf76c44b6ad57918d2c')

package() {
  msg2 "Installing Language Pack..."
  tar Jxvf "${srcdir}"/data.tar.xz -C "${pkgdir}"/
  msg2 "Cleaning unwanted files..."
  rm -rv "${pkgdir}"/usr/share/
}

# vim:set ts=2 sw=2 et: