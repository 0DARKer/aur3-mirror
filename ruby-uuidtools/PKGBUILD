# Contributor: Simon Lipp <sloonz+aur@gmail.com

pkgname=ruby-uuidtools
pkgver=2.1.1
pkgrel=1
pkgdesc="UUIDTools was designed to be a simple library for generating any of the various types of UUIDs"
arch=(i686 x86_64)
url="http://rubyforge.org/projects/uuidtools/"
license=('MIT')
depends=('ruby')
conflicts=()
source="http://rubyforge.org/frs/download.php/65451/uuidtools-2.1.1.gem"
md5sums=('bb543d349308b4b7f830c564b8146768')
noextract=(uuidtools-$pkgver.gem)

build(){
  cd ${startdir}/src
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${startdir}/pkg/$_gemdir" uuidtools-$pkgver.gem || return 1
}
