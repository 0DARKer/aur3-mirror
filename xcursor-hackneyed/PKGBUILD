# Maintainer: Joel Almeida <aullidolunar at gmail dot c0m>

pkgname=xcursor-hackneyed
pkgver=0.3.15
pkgrel=1
pkgdesc="Windows 3.x-inspired cursor theme with hourglasses (include left cursors)"
arch=('any')
url="http://xfce-look.org/content/show.php/Hackneyed?content=165283"
license=('WTFPL')
depends=()
source=("http://xfce-look.org/CONTENT/content-files/165283-Hackneyed-${pkgver}-pack.tar.bz2")
noextract=('165283-Hackneyed-${pkgver}-pack.tar.bz2')
md5sums=('9a87fcc0254c60a149c781db694c205c')
_theme='Hackneyed'

package() {
	cd "$srcdir"
	install -d -m 755 "$pkgdir/usr/share/icons"
	tar xjf "165283-Hackneyed-${pkgver}-pack.tar.bz2" -C "$pkgdir/usr/share/icons"
}

build() {
	cd "$srcdir"
}
