# Maintainer: Joel Almeida <aullidolunar at gmail dot c0m>

pkgname=xcursor-hackneyed
pkgver=0.3.14
pkgrel=2
pkgdesc="Windows 3.x-inspired cursor theme with hourglasses (include left cursors)"
arch=('any')
url="http://xfce-look.org/content/show.php/Hackneyed?content=165283"
license=('WTFPL')
depends=()
source=("http://xfce-look.org/CONTENT/content-files/165283-Hackneyed-0.3.14-pack.tar.bz2")
md5sums=('68ecf929f94f151d1f36d79abdaa74c4')
_theme='Hackneyed'

package() {
	cd "$srcdir"
	rm "$_theme/cursor.theme"
	rm "$_theme-left/cursor.theme"
	find $_theme* -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/icons/{}" \;
}

build() {
	cd "$srcdir"
}
