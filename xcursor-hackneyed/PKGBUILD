# Maintainer: Joel Almeida <aullidolunar at gmail dot c0m>

_theme='Hackneyed'
_keycode='165283'
pkgname=xcursor-hackneyed
pkgver=0.3.16
pkgrel=1
pkgdesc="Windows 3.x-inspired cursor theme with hourglasses (include left cursors)"
arch=('any')
url="http://xfce-look.org/content/show.php/Hackneyed?content=165283"
license=('WTFPL')
depends=()
source=("http://xfce-look.org/CONTENT/content-files/$_keycode-$_theme-${pkgver}-pack.tar.bz2")
noextract=("$_keycode-$_theme-${pkgver}-pack.tar.bz2")
md5sums=('49fff4b3b3803c2f4b08e5040f6f805c')

package() {
	cd "$srcdir"
	install -d -m 755 "$pkgdir/usr/share/icons"
	tar xjf "$_keycode-$_theme-${pkgver}-pack.tar.bz2" -C "$pkgdir/usr/share/icons"
}

build() {
	cd "$srcdir"
}
