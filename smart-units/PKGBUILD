# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=smart-units
pkgver=8.f363c37
pkgrel=1
pkgdesc="A pretty clever command-line units converter. (written in Sidef)"
arch=('any')
url="https://github.com/trizen/smart-units"
license=('GPLv3');

makedepends=('git')
depends=('sidef-git')

source=('git://github.com/trizen/smart-units.git')
md5sums=('SKIP')

pkgver() {
  cd $pkgname
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

package() {
  cd $pkgname
  install -m 755 -D "$pkgname.sf" "$pkgdir/usr/bin/$pkgname"
}
