# Contributor: solsTiCe d'Hiver <solstice.dhiver@gmail.com>

pkgname=dnscrypt-proxy
pkgver=0.7
pkgrel=1
pkgdesc="A tool for securing communications between a client and a DNS resolver"
arch=('i686' 'x86_64')
url="http://www.opendns.com/technology/dnscrypt"
license=('custom')
source=(https://github.com/downloads/opendns/dnscrypt-proxy/dnscrypt-proxy-$pkgver.tar.bz2)
md5sums=('19c307442d36d53d10f61c3973db3907')

build() {
	cd $srcdir/$pkgname-$pkgver
	./autogen.sh
	./configure --prefix=/usr
	make
	make DESTDIR=$pkgdir install
	mkdir -p $pkgdir/usr/share/{licenses,doc}/$pkgname
	install -m644 COPYING $pkgdir/usr/share/licenses/$pkgname
	install -m644 AUTHORS NEWS README README.markdown $pkgdir/usr/share/doc/$pkgname

}

