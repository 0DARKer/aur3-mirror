# Contributor: Matt Parnell /ilikenwf <parwok@gmail.com>
# Contributor: Jonathan <eyeswide@gmail.com>
# Based on [extra]'s libpciaccess

pkgname=libpciaccess-git
pkgver=20111122
pkgrel=1
pkgdesc="X11 PCI access library (Git version)"
arch=(i686 x86_64)
url="http://gitweb.freedesktop.org/?p=xorg/lib/libpciaccess.git"
license="bsd"
makedepends=('xorg-util-macros' 'git')
options=('!libtool')
provides=('libpciaccess=0.12.901')
conflicts=('libpciaccess')

_gitroot="git://anongit.freedesktop.org/xorg/lib/libpciaccess.git"
_gitname=${pkgname/-*}

build() {
  msg "Connecting to git.freedesktop.org GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin && cd ..
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r $_gitname $_gitname-build
  cd $_gitname-build

  ./autogen.sh --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $_gitname-build
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname/-*}/COPYING"
}