# Contributor: T-T

pkgname='pigmap'
pkgver='0.7.4'
pkgrel=0
pkgdesc="Minecraft Google map generator"
arch=('i686' 'x86_64')
url="https://github.com/equalpants/pigmap"
license=('GPL')
depends=(bash libpng)
makedepends=()
conflicts=()
optdepends=()

source=("https://github.com/equalpants/pigmap/tarball/master")
md5sums=(cb1a3adf9148824bcc8d407faba4f63f)

build() {
	cd ${srcdir}/equalpants-pigmap-9b009ec
	
	mkdir ${pkgdir}/usr
	mkdir ${pkgdir}/usr/share
	mkdir ${pkgdir}/usr/share/pigmap
	mkdir ${pkgdir}/usr/share/pigmap/images
	mkdir ${pkgdir}/usr/bin
	make
	mv ${srcdir}/equalpants-pigmap-9b009ec/fire.png ${pkgdir}/usr/share/pigmap/images
	cp ~/.minecraft/bin/minecraft/terrain.png ${pkgdir}/usr/share/pigmap/images
	for soubor in ${srcdir}/equalpants-pigmap-9b009ec/*; do
		mv ${soubor} ${pkgdir}/usr/share/pigmap
	done
	
	echo '#!/bin/bash

cd /usr/share/pigmap
./pigmap $@
' > ${pkgdir}/usr/bin/pigmap
	chmod +x ${pkgdir}/usr/bin/pigmap
}
