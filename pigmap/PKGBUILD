# Contributor: T-T

pkgname='pigmap'
pkgver='1.0'
pkgrel=0
pkgdesc="Minecraft Google map generator"
arch=('i686' 'x86_64')
url="https://github.com/equalpants/pigmap"
license=('GPL')
depends=(bash libpng)
makedepends=()
conflicts=()
optdepends=()

source=("https://github.com/equalpants/pigmap/tarball/master")
md5sums=(8329c0336c8c838fc76b274b667f5718)

build() {
	cd ${srcdir}/equalpants-pigmap-9ff181f
	
	mkdir ${pkgdir}/usr
	mkdir ${pkgdir}/usr/share
	mkdir ${pkgdir}/usr/share/pigmap
	mkdir ${pkgdir}/usr/share/pigmap/images
	mkdir ${pkgdir}/usr/bin
	make
	mv ${srcdir}/equalpants-pigmap-9ff181f/fire.png ${pkgdir}/usr/share/pigmap/images
	for soubor in ${srcdir}/equalpants-pigmap-9ff181f/*; do
		mv ${soubor} ${pkgdir}/usr/share/pigmap
	done
	
	echo '#!/bin/bash

cd /usr/share/pigmap
./pigmap $@
' > ${pkgdir}/usr/bin/pigmap
	chmod +x ${pkgdir}/usr/bin/pigmap
}
