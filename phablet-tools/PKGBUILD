# Maintainer: Christopher Reimer <archlinux[at]creimer[dot]net>
pkgname=phablet-tools
pkgver=1.0+14.04.20140207
pkgrel=1
pkgdesc="Tools to install Ubuntu Touch on Nexus Devices"
url="https://launchpad.net/~phablet-team"
arch=('any')
license=('GPL2')
depends=('android-sdk-platform-tools' 'python2-configobj' 'python2-pyliblzma' 'python2-requests' 'python2-xdg' 'python2-six' 'sudo')
makedepends=('python2-setuptools')
# options='!emptydirs'
source=("https://launchpad.net/ubuntu/trusty/+source/phablet-tools/1.0+14.04.20140207-0ubuntu1/+files/${pkgname}_${pkgver}.orig.tar.gz")
md5sums=('3f583da005259f9ffe7491ae07e27ad3')

prepare() {
  cd $pkgname-$pkgver
  sed -i 's/python/python2.7/g' phabletutils/settings.py
}

package() {
  cd $pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}
