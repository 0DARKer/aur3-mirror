# Maintainer: MLC <murderslastcrow at gmail dot com>
pkgname=aldabra
pkgver=0.6.1
pkgrel=5
pkgdesc="A GTK 2 port of the GTK 3 theme Adwaita."
arch=(any)
url="http://gnome-Look.org/content/show.php?content=142247"
license=('GPL')
depends=('gtk-aurora-engine' 'gtk-engine-murrine')
source=('http://GNOME-Look.org/CONTENT/content-files/142247-Aldabra-0.6.1.tar')
md5sums=(9f766083d399b243d8752324ce26b685)


build() {
        mkdir -p ${pkgdir}/usr/share/themes/Aldabra
        tar xf 142247-Aldabra-0.6.1.tar -C ${pkgdir}/usr/share/themes/Aldabra
        chown -R root:root ${pkgdir}/usr/share/themes/Aldabra
}
