# Maintainer: MLC <murderslastcrow at gmail dot com>
pkgname=aldabra
pkgver=0.5
pkgrel=2
pkgdesc="A GTK 2 port of the GTK 3 theme Adwaita."
arch=(any)
url="http://gnome-Look.org/content/show.php?content=142247"
license=('GPL')
depends=('gtk-aurora-engine' 'gtk-engine-murrine')
source=('http://dl101.herosh.com/f7e28ee6ffbeadb8cb09b2d456eba8a8/aldabra-0.5.tar.gz')
md5sums=(3f2e063e86583afd3e2fbf5b1cf42543)


build() {
        mkdir -p ${pkgdir}/usr/share/themes
        tar xzf aldabra-0.5.tar.gz -C ${pkgdir}/usr/share/themes
        chown -R root:root ${pkgdir}/usr/share/themes
}
