# Contributor: decay_of_mind <asparagus.maximus@gmail.com>

pkgname=mcu8051ide
pkgver=1.3.3
pkgrel=1
pkgdesc="IDE for C and assembly for MCU's based on 8051"
arch=('i686' 'x86_64')
url="http://mcu8051ide.sourceforge.net"
license=('GPL2')
depends=('bwidget' 'itcl' 'tcl' 'tdom' 'tcllib' 'tk' 'tkimg' 'tclx')
makedepends=('gcc' 'gcc-libs' 'cmake' 'pkgconfig')
source=(http://prdownloads.sourceforge.net/mcu8051ide/$pkgname-$pkgver.tar.gz)
md5sums=('1b426ffd6a4de2c1d297eee1dd3831d5')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
