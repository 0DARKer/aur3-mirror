# Maintainer: Anton Bazhenov <anton.bazhenov at gmail>
# Contributor: Mateusz Herych <heniekk@gmail.com>

pkgname=asciijump
pkgver=1.0.2beta
_pkgver=1.0.2~beta
pkgrel=7
pkgdesc="An ASCII-art game about ski jumping"
arch=('i686' 'x86_64')
url="http://www.happypenguin.org/show?asciijump"
license=('GPL')
depends=('slang')
makedepends=('ctags')
install="${pkgname}.install"
source=("http://ftp.debian.org/debian/pool/main/a/asciijump/${pkgname}_${_pkgver}.orig.tar.gz"
        "${pkgname}.patch")
md5sums=('ea803b04f0a167cb477233d5940a116c'
         '1ebc2106eb1508cdece53c38a248ad74')

build() {
  cd "${srcdir}/${pkgname}-${_pkgver}"
  patch -Np1 -i "../${pkgname}.patch"
  ./configure --prefix=/usr --mandir=/usr/share/man --localstatedir=/var || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${_pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
}

