# Maintainer: Luka Perkov <luka.perkov@sartura.hr>

pkgname=pyang
pkgver=1.4.1
pkgrel=1
pkgdesc='An extensible YANG validator and converter in python'
arch=(any)
url='https://code.google.com/p/pyang/'
license=('BSD')
depends=(python)
makedepends=(python-setuptools)
source=("https://pyang.googlecode.com/files/$pkgname-$pkgver.tar.gz")
md5sums=('1ff94a82078affb3510da82b624e1803')

build() {
	cd "$srcdir/$pkgname-$pkgver"

	python setup.py build
}

package() {
	cd "$srcdir/$pkgname-$pkgver"

	python setup.py install -O1 --root="$pkgdir"
}
