# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=rssowl
pkgver=2.0.6
pkgrel=1
pkgdesc="A powerful java-based RSS reader."
arch=('i686' 'x86_64')
url="http://boreal.rssowl.org"
license=('GPL')
depends=('libxrender' 'fontconfig')

if [[ $CARCH = "x86_64" ]]; then
	source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.linux.x86_64.zip \
		$pkgname.desktop)
	md5sums=('67a38d155cd192e94dc87c0c39bb5b34' \
		 '4e9dcbe25291435d3bd8396ed88a1d62')
else
	source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.linux.zip \
		$pkgname.desktop)
	md5sums=('9a8c2bcb6ba614124fdd7c1487e77820' \
		 '4e9dcbe25291435d3bd8396ed88a1d62')
fi

build(){
	cd $startdir/src/$pkgname
	mkdir -p $pkgdir/usr/{bin,share/$pkgname}
	cp -R * $pkgdir/usr/share/$pkgname
	echo -e "#!/bin/bash\n\n/usr/share/$pkgname/RSSOwl" >$pkgdir/usr/bin/$pkgname
	chmod 755 $pkgdir/usr/bin/$pkgname
	install -D -m644 $srcdir/rssowl.desktop $pkgdir/usr/share/applications/rssowl.desktop
}
        
