pkgname=gnubg
pkgver=20111107
pkgrel=1
pkgdesc="Backgammon"
arch=('i686' 'x86_64')
url="http://www.gnubg.org"
license=('GPL')
depends=('python' 'gtkglext' 'bison' 'flex')
install=$pkgname.install
source=(http://www.gnubg.org/media/sources/$pkgname-source-SNAPSHOT-$pkgver.tar.gz
	gnubg.desktop)
md5sums=('1cece91210975c7ebe5dc01d6e64cf3b'
         '965f5c7c25f60b27d06cc6fef7befd30')

build() {
  cd "$srcdir/$pkgname"
  ./autogen.sh
  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc --mandir=/usr/share/man
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir" install
  install -Dm 644 ../../gnubg.desktop "$pkgdir"/usr/share/applications/gnubg.desktop
}
