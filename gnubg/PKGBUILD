# Maintainer: Daniel J Griffiths <ghost1227@archlinux.us>
# Contributor: Stefan Clarke <fm0nk3y@yahoo.co.uk>

pkgname=gnubg
pkgver=20110827
pkgrel=1
pkgdesc="Backgammon"
arch=('i686' 'x86_64')
url="http://www.gnubg.org"
license=('GPL')
depends=('python' 'gtkglext' 'bison' 'flex')
install=$pkgname.install
source=(http://www.gnubg.org/media/sources/$pkgname-source-SNAPSHOT-$pkgver.tar.gz)
md5sums=('a64292096bb9c6caf72087eaaa157e99')

build() {
  cd $srcdir/$pkgname
  ./autogen.sh || return 1
  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc --mandir=/usr/share/man || return 1
  make || return 1
  make install DESTDIR=$pkgdir || return 1
}
