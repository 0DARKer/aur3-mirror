# Maintainer: neersighted <n@neersighted.com>
# Contributor: Lukas Fleischer <archlinux at cryptocrack dot de>

pkgname=aurdupes-git
pkgver=latest
pkgrel=1
pkgdesc='Find duplicate AUR packages (development version)'
url='http://git.cryptocrack.de/aurdupes.git'
license=('BSD')
source=('git://git.cryptocrack.de/aurdupes.git')
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
arch=('any')
depends=('perl' 'wget')
makedepends=('git')
conflicts=('aurdupes')
provides=('aurdupes')

pkgver() {
  cd ${srcdir}/aurdupes

  git describe --always | sed 's/^v//;s/-/./g'
}

package() {
  cd ${srcdir}/aurdupes

  # Install the program.
  install -Dm755 aurdupes.pl ${pkgdir}/usr/bin/aurdupes
}

# vim:set ts=2 sw=2 et:
