# Maintainer: Neer Sighted (neersighted) <neersighted@myopera.com>
# Contributor: Lukas Fleischer <archlinux at cryptocrack dot de>

pkgname=aurdupes-git
pkgver=0.6.2.ga641bff
pkgrel=1
url='http://git.cryptocrack.de/aurdupes.git'
pkgdesc='Find duplicate AUR packages (development version)'
license=('BSD')
_gitname=aurdupes
source=("${_gitname}::git://git.cryptocrack.de/aurdupes.git")
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
arch=('any')
depends=('perl' 'wget')
makedepends=('git')
conflicts=('aurdupes')
provides=('aurdupes')

pkgver() {
  cd "${srcdir}/${_gitname}"

  git describe --always | sed 's/^v//;s/-/./g'
}

package() {
 cd "${srcdir}/${_gitname}"

  # Install the program.
  install -Dm0755 aurdupes.pl \
                  "${pkgdir}/usr/bin/aurdupes"

  # Install the license.
  install -Dm0755 LICENSE \
                  "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
