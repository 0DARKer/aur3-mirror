pkgname=net-bubble
pkgver=0.9.1
pkgrel=2
pkgdesc="Frozen-bubble clone. The main aim of the game is to link together more than two balls of the same color to remove them from the game."
arch=("i686" "x86_64")
license=(custom)
url="http://netbubble.zippygraphics.com/"
depends=(sdl sdl_image sdl_net)
source=(http://netbubble.zippygraphics.com/files/net-bubble-${pkgver}.tar.gz
	net-bubble.desktop
	net-bubble)
	
md5sums=('5102f0f7e6139749cb8c8dffa51eee62'
         '06872062ac5289bc49428f89442ffd1d'
	 '3012dec3204bac1afab9b21d8ecb65f2')
		  		  	 
build() {
    cd $startdir/src/$pkgname-$pkgver
    make
    local dstdir=$startdir/pkg/usr/share/games/$pkgname
    mkdir -p $dstdir
    cp -R . $dstdir
    cd $dstdir
    rm *.o *.h *.c Makefile
    
    install -D -m644 $startdir/src/net-bubble.desktop \
         $startdir/pkg/usr/share/applications/net-bubble.desktop
	 
    install -D -m755 $startdir/src/net-bubble \
         $startdir/pkg/usr/bin/net-bubble
	 
    #./configure --prefix=/usr
    #make || return 1
    #make prefix=$startdir/pkg/usr install
}

