# Contributor: Sapphira Armageddos <shadowkyogre@aim.com>
pkgname=qtarot-git
pkgver=20120830
pkgrel=1
pkgdesc="A simple tarot reading program"
arch='any'
url="http://github.com/ShadowKyogre/QTarot/"
license=('GPL')
depends=('pyqt' 'python-lxml')
source=()
md5sums=() #generate with 'makepkg -g'
install=${pkgname}.install

_gitroot=git://github.com/ShadowKyogre/QTarot.git
_gitname="QTarot"

build() {
  cd "${srcdir}"
  if test -d "${_gitname}";then
    cd "${_gitname}"
    git pull
  else
    git clone "$_gitroot" "$_gitname" --depth=1
  fi
}

package()
{
  cd "${srcdir}/QTarot"
  python ./setup.py install --root="${pkgdir}"
  echo "__data_dir__ = \"/usr/share/qtarot\"" > "${pkgdir}/usr/lib/python3.2/site-packages/qtarot/package.ini"
}

# vim:set ts=2 sw=2 et:
