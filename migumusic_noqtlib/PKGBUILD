# Contributor: <sunshine1985115 at gmail dot com>
pkgname=migumusic_noqtlib
pkgver=2010Beta1
pkgrel=1
pkgdesc="MiguMusic(No QT lib)"
arch=(i686)
url="http://music.10086.cn/newweb/zq/2009/migu_music_client/default/_/_/_/_/_/_/p.html"
license=()
depends=('qt' 'phonon')
source=("http://interface-club.12530.com/update/Linux/MiguMusic_noqtlib_2010Beta1.bin")
md5sums=('f5a3071b889df46ba3b250a30b591d96')

build() {
  cd $srcdir
  sed -n -e '1,/^exit 0$/!p' MiguMusic_noqtlib_2010Beta1.bin > "MiguMusicInstaller.tar.gz" || return 1
  tar zxf MiguMusicInstaller.tar.gz || return 1
  cd MiguMusicInstaller
  tar zxf MiguMusic.tar.gz || return 1
  mkdir -p $pkgdir/opt/MigoMusic
  cp -R Resource MiguMusic Readme MiguMusic.sh $pkgdir/opt/MigoMusic
  mkdir -p $pkgdir/usr/share/applications
  echo "[Desktop Entry]
Type=Application
Version=1.0.1
Name=MiguMusic
Comment=Migu Music Linux 版本应用程序
Icon=/opt/MigoMusic/Resource/ICONmacmusic.png
Exec=/opt/MigoMusic/MiguMusic.sh
Categories=AudioVideo;Player
Terminal=false
Path=/opt/MigoMusic" > $pkgdir/usr/share/applications/MiguMusic.desktop
  chmod 755 $pkgdir/usr/share/applications/MiguMusic.desktop
}