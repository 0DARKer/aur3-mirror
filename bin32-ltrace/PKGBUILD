pkgname=bin32-ltrace
_pkgname32=ltrace
pkgver=0.5.3
pkgrel=1
_pkgrel32=2
pkgdesc="ltrace is a debugging program which runs a specified command until it exits -- 32 bits version"
arch=('x86_64')
url="http://packages.debian.org/unstable/utils/ltrace.html"
license=('GPL')
depends=('lib32-elfutils')
source=("ftp://ftp.archlinux.org/extra/os/i686/$_pkgname32-$pkgver-$_pkgrel32-i686.pkg.tar.xz")
md5sums=('a358dfd7773a724e7366af2be6079969')
sha256sums=('5870ac38eeaf750c3bcf79157def47cdd77ca6007597be584622f230fdd517be')

build() {
  msg2 "Nothing to build :)"
}

package() {
  # Only copy the main binary; the configuration file and manual page are in extra/ltrace
  # which is included as a dependency because we don't want file conflicts
  install -Dm755 "$srcdir"/usr/bin/ltrace "$pkgdir"/usr/bin/ltrace32
}
