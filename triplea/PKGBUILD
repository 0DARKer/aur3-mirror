# Maintainer: Daniel Raneland <raniz@gmx.net>

pkgname=triplea
pkgver=0.9.0.2
pkgrel=1
pkgdesc="TripleA is a turn based strategy game engine and axis and allies clone"
arch=('i686' 'x86_64')
url="http://triplea.sf.net"
license=('GPL')
depends=('jre')
filever=$(echo $pkgver | sed "s/\./_/g")
source=(http://dfn.dl.sourceforge.net/sourceforge/${pkgname}/${pkgname}_${filever}_all_platforms.zip
triplea )
md5sums=(b50fad280cce0452ba9a1acdc600a784
172f6ecf68401d3e19cd24cb6e9ada83)

build() {
    install -d ${startdir}/pkg/usr/share/triplea
    install -d ${startdir}/pkg/usr/bin
    cd ${startdir}/src
    cp triplea ${startdir}/pkg/usr/bin
    cd ${pkgname}_${filever}
    cp -R * ${startdir}/pkg/usr/share/triplea
    
}
