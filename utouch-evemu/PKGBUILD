pkgname=utouch-evemu
pkgver=1.0.5
pkgrel=1
pkgdesc="Event Emulation for the uTouch Stack"
arch=(i686 x86_64)
url="https://launchpad.net/utouch-evemu"
license=(GPL)
depends=()
makedepends=()
source=(http://launchpad.net/$pkgname/trunk/v$pkgver/+download/$pkgname-$pkgver.tar.gz)
options=('!libtool')

build() {
  cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('fd33d52a5d29fade9a8d649135758977')
