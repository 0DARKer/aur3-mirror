pkgname=utouch-evemu
pkgver=1.0.8
pkgrel=1
pkgdesc="Event Emulation for the uTouch Stack"
arch=(i686 x86_64)
url="https://launchpad.net/utouch-evemu"
license=(GPL)
depends=('glibc')
makedepends=()
source=(http://launchpad.net/$pkgname/trunk/$pkgname-$pkgver/+download/$pkgname-$pkgver.tar.gz)
options=('!libtool')

build() {
  cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('5b034c15b3acc362e91bd88ef0c272e9')
