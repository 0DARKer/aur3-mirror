# CPAN Name  : File-ShareDir
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-file-sharedir'
pkgver='1.02'
pkgrel='1'
pkgdesc="Locate per-dist and per-module shared files"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-class-inspector>=1.12')
url='http://search.cpan.org/dist/File-ShareDir'
source=('http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/File-ShareDir-1.02.tar.gz')
md5sums=('edb4b9d418a03bf9b0cf6d0fa9585c3f')

build() {
  DIST_DIR="${srcdir}/File-ShareDir-1.02"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
