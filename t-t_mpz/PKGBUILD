# Contributor: T-T

pkgname='t-t_mpz'
pkgver='1.1'
pkgrel=2
pkgdesc="Simple mpd statusbar"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/mpz/files/"
license=('BSD')
depends=(bash mpc zenity)
makedepends=()
conflicts=()
optdepends=()

source=("https://downloads.sourceforge.net/project/mpz/mpz-$pkgver")
md5sums=(d36a72dae835a7b18d4aaf56e3606397)

build() {
	cd $srcdir/
	
	mkdir $pkgdir/usr
	mkdir $pkgdir/usr/bin
	
	mv $srcdir/mpz-$pkgver $pkgdir/usr/bin/mpz
	chmod +x $pkgdir/usr/bin/mpz
}
