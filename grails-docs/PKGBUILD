pkgname=grails-docs
pkgver=1.3.7
pkgrel=1
pkgdesc="Documentation files for Grails"
arch=('any')
url="http://grails.org"
license=('Apache')
depends=("grails=$pkgver")
options=(docs)
source=(http://dist.springframework.org.s3.amazonaws.com/release/GRAILS/$pkgname-$pkgver.zip)

build() {
  msg "Nothing to build..."
}

package() {
  cd "$srcdir"

  mkdir -p "$pkgdir/usr/share/grails/doc"
  mv api css guide img ref index.html "$pkgdir/usr/share/grails/doc"
}

# vim:set ts=2 sw=2 et:
md5sums=('54246e5d722560c8e9a3b06e07f39f4d')
