# Maintainer  : Dan Vratil <vratil@progdansoft.com>

pkgname=lib32-ois
pkgver=1.3
pkgrel=1
_32pkgrel=1
pkgdesc="Object Oriented Input System."
arch=('x86_64')
url="http://sourceforge.net/projects/wgois"
license=('zlib/libpng')
groups=('lib32')
source=(ftp://mirrors.kernel.org/archlinux/community/os/i686/ois-${pkgver}-${_32pkgrel}-i686.pkg.tar.xz)
md5sums=('d00ab2683c5af7d17c94536f3ff04dbc')

package() 
{
	mkdir -p ${pkgdir}/usr/lib32/pkgconfig
	cp -P ${srcdir}/usr/lib/*.so ${pkgdir}/usr/lib32/

	mkdir -p ${pkgdir}/usr/lib32/pkgconfig
	install ${srcdir}/usr/lib/pkgconfig/* ${pkgdir}/usr/lib32/pkgconfig
	sed -i 's/\/lib/\/lib32/g' ${pkgdir}/usr/lib32/pkgconfig/*
}
