# Contributor: lolilolicon < (l[oi]){2}con@gmail.com >

pkgname=redcloth
_pkgname=RedCloth
pkgver=4.2.2
pkgrel=3
pkgdesc="Module for using the Textile markup language in Ruby."
arch=(i686 x86_64)
url="http://redcloth.org/"
license=('MIT')
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/59585/$_pkgname-$pkgver.gem)
md5sums=('599ca833f131c8c1aa2d7bf5b0e9ede1')

build() {
  cd "$srcdir"
  local _gemdir=$(ruby -rubygems -e'puts Gem.default_dir')
  gem install --ignore-dependencies \
    -i "$pkgdir$_gemdir" "$_pkgname-$pkgver.gem" -n "$pkgdir"/usr/bin
}
