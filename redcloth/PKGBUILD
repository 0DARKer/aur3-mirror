# Contributor: lolilolicon < (l[oi]){2}con@gmail.com >

pkgname=redcloth
_pkgname=RedCloth
pkgver=4.2.2
pkgrel=2
pkgdesc="module for using the Textile markup language in Ruby."
arch=('i686' 'x86_64')
url="http://redcloth.org/"
license=('MIT')
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/59587/$_pkgname-$pkgver.tar.gz)
md5sums=('af902a8b53b96f0893287eed805ca145')

build() {
  cd "$srcdir"/$_pkgname-4.2.2
  mkdir -p "$pkgdir"/usr/lib/ruby/site_ruby/1.9.1/
  cp -a lib/redcloth* "$pkgdir"/usr/lib/ruby/site_ruby/1.9.1/
  cd ext/redcloth_scan
  ruby extconf.rb
  make
  make DESTDIR="$pkgdir" install
  cd ../../bin
  install redcloth -D -m755 "$pkgdir"/usr/bin/redcloth
}
