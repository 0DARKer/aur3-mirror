# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=babeltrace
pkgver=1.0
pkgrel=2
srcver=$pkgver.0-pre4
pkgdesc="LTTng command-line trace reader"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL' 'MIT')
depends=('liburcu')
source=(http://lttng.org/files/$pkgname/$pkgname-$srcver.tar.bz2)
md5sums=('e101b3572f2438e30151686e12526386')
install='babeltrace.install'

build()
{
	cd "$srcdir/$pkgname-$srcver"
	./configure
	make
}

package()
{
	cd "$srcdir/$pkgname-$srcver"
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir"/usr/share/licenses/$pkgname
	cp mit-license.txt "$pkgdir"/usr/share/licenses/$pkgname
}
