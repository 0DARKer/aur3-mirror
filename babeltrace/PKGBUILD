# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

rc=rc4
pkgname=babeltrace
pkgver=1.0.0.$rc
pkgrel=1
pkgdesc="command-line trace reader for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL' 'MIT')
depends=('liburcu')
source=(http://lttng.org/files/$pkgname/$pkgname-1.0.0-$rc.tar.bz2)
sha1sums=('9a3aada9403abbf9a705a16f44938c557b54640e')
install='babeltrace.install'

build()
{
	cd "$srcdir/$pkgname-1.0.0-$rc"
	./configure --prefix=/usr
	make
}

package()
{
	cd "$srcdir/$pkgname-1.0.0-$rc"
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir"/usr/share/licenses/$pkgname
	cp mit-license.txt "$pkgdir"/usr/share/licenses/$pkgname
}
