# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=babeltrace
pkgver=1.0.0rc2
pkgrel=1
pkgdesc="command-line trace reader for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL' 'MIT')
depends=('liburcu')
source=(http://lttng.org/files/$pkgname/$pkgname-1.0.0-rc2.tar.bz2)
sha1sums=('fe35c67cfa9c731584a91670aaac2a8277d114c8')
install='babeltrace.install'

build()
{
	cd "$srcdir/$pkgname-1.0.0-rc2"
	./configure
	make
}

package()
{
	cd "$srcdir/$pkgname-1.0.0-rc2"
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir"/usr/share/licenses/$pkgname
	cp mit-license.txt "$pkgdir"/usr/share/licenses/$pkgname
}
