# Contributor: Wei Hu <weihu@cs.virginia.edu>

pkgname=otags
pkgver=3.12.2
pkgrel=1
pkgdesc="Emacs and vi Tag Generation for OCaml"
license=('GPL3')
arch=('i686' 'x86_64')
url="http://askra.de/software/otags/"
depends=('ocaml')
options=(!strip !makeflags)
source=("http://askra.de/software/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('8d24eda2e174bfd1ea3ec294ccd230ce')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix /usr
  make || return 1
  make INSTALLLIBDIR=$pkgdir/usr/lib/ocaml MANDIR=$pkgdir/usr/share/man BINDIR=$pkgdir/usr/bin install
}


