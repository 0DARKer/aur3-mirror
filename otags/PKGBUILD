# Contributor: Wei Hu <weihu@cs.virginia.edu>

pkgname=otags
_pkgname=${pkgname}-reloaded
pkgver=3.12.1
pkgrel=3
pkgdesc="Emacs and vi Tag Generation for OCaml"
license=('GPL3')
arch=('i686' 'x86_64')
url="http://askra.de/software/otags/"
depends=('ocaml')
options=(!strip !makeflags)
source=("http://askra.de/software/${pkgname}/${_pkgname}-${pkgver}.tar.gz")
md5sums=('2e63c46a0e6057f5f5a21b73f1a0eed9')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix /usr
  make || return 1
  make INSTALLLIBDIR=$pkgdir/usr/lib/ocaml MANDIR=$pkgdir/usr/share/man BINDIR=$pkgdir/usr/bin install
}


