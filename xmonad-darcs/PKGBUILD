# Contributor: adam vogt <vogt.adam<<at>>gmail.com>
# Package generated by cabal2arch 0.6
pkgname=xmonad-darcs
pkgrel=1
pkgver=20111128
pkgdesc="A tiling window manager"
url="http://xmonad.org"
license=('custom:BSD3')
arch=('i686' 'x86_64')
conflicts=('xmonad')
depends=('gmp' 'libxinerama')
optdepends=('ghc: for customizing' 'haskell-x11: for customizing' )
makedepends=('darcs' 'ghc' 'haskell-x11>=1.5' 'haskell-utf8-string')
options=('strip')
source=()
install=xmonad.install
md5sums=()
_darcstrunk="http://code.haskell.org"
_darcsmod="xmonad"

build() {
    cd $startdir/src

    if [[ -d $startdir/src/$_darcsmod/_darcs ]]
    then
      msg "Retrieving missing patches"
      cd $_darcsmod
#      darcs pull -a $_darcstrunk/$_darcsmod
    else
      msg "Retrieving complete sources"
      darcs get --partial --set-scripts-executable $_darcstrunk/$_darcsmod
    fi
    cd $startdir/src/$_darcsmod

    runhaskell Setup configure --prefix=/usr --flags="use_xft use_utf8" --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock --hyperlink-source || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/xmonad
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
