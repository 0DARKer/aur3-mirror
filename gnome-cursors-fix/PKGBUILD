# Maintainer: Alucryd <alucryd@gmail.com>
pkgname=gnome-cursors-fix
pkgver=3.2.0
pkgrel=1
pkgdesc="A fix for the ugly x11 cursors in vanilla Gnome 3"
arch=('any')
url="http://www.gnome.org/"
license=('GPL3')
depends=('gnome-themes-standard')
source=('index.theme')
md5sums=('1a9667ab2fb40b97c346b46ca5abc49c')

package() {
    cd $srcdir
    mkdir -p $pkgdir/usr/share/icons/default
    mv index.theme $pkgdir/usr/share/icons/default/
}

