# Contributor: sputnick <gilles DOT quenot AT gmail DOT com>
pkgname=sysrqd
pkgver=14
pkgrel=5
pkgdesc="A small daemon intended to manage Linux Sysrq over network."
arch=('i686' 'x86_64')
url="http://julien.danjou.info/software/$pkgname"
license="GPL"
install='$pkgname.install'
conflicts=('sysrqd')
provides=('sysrqd')

_gitroot="git://git.naquadah.org/$pkgname.git"
_gitname=$pkgname

source=( "git://git.naquadah.org/$pkgname.git" )
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $_gitname
  make
}

package() {
  cd $_gitname
  install -Dm755 "$srcdir/$pkgname/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
