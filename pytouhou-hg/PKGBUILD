# Maintainer: Emmanuel Gil Peyrot <linkmauve@linkmauve.fr>

_name=pytouhou
pkgname=$_name-hg
pkgver=1
pkgrel=1
pkgdesc='Libre reimplementation of the Touhou 6 engine.'
arch=('i686' 'x86_64')
url='http://linkmauve.fr/doc/touhou/'
license=('GPL3')
depends=('pyglet' 'th06-demo-data')
makedepends=('cython2')
provides=('pytouhou')
conflicts=('pytouhou')

_hgtrunk=http://hg.sitedethib.com/touhou/
_hgmod=$_name

build() {
  cd "$srcdir"

  if [ -d "$_hgmod/.hg" ]; then
    cd "$_hgmod"
    hg pull -u
  else
    hg clone "$_hgtrunk" "$_hgmod"
    cd "$_hgmod"
  fi
}

package() {
  cd "$srcdir/$_hgmod"
  python2 setup.py install --prefix=/usr --root="$pkgdir"
}

