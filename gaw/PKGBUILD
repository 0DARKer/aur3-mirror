# Contributor: Matias De la Puente <mfpuente.ar@gmail.com>
pkgname=gaw
pkgver=20100528
pkgrel=1
pkgdesc="tool for viewing analog data, such as the output of Spice simulations"
arch=('i686' 'x86_64')
url="http://www.herveq.fr/linux/gaw.php"
license=('GPL')
groups=()
depends=('gtk2')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://www.herveq.fr/download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('16755fc16c9e9dc9a8effeec85676d5d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

