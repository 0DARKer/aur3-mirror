# Maintainer: Christoph Haag <haagch at studi.informatik.uni-stuttgart.de>

pkgname=mesa-full-i915g
pkgver=20120914
_realver=9.1
pkgrel=1
pkgdesc="Full Mesa 3D graphics library with all its components, built from the git master branch. Compiles mesa for i915g (gallium). WARNING: this is experimental software and not supported by intel."
arch=('i686' 'x86_64')
url="http://mesa3d.org/"
license=('LGPL')
depends=('libdrm-git' 'dri2proto>=2.1' 'glproto>=1.4.10' 'libxxf86vm' 'libxdamage' 'expat>=2.0.1' 'libxmu' 'talloc' 'llvm' 'glu')
makedepends=('pkgconfig' 'imake' 'xorg-server-devel')
provides=("libgl=${_realver}" "mesa=${_realver}" "intel-dri=${_realver}" 'libglapi' 'libegl' 'libgles' 'khrplatform-devel' 'libgbm' 'osmesa')
conflicts=('libgl' 'mesa' 'intel-dri' 'mesa-full-i915' 'libglapi' 'libegl' 'libgles' 'khrplatform-devel' 'libgbm' 'osmesa' 'mesa-full-i915g' 'mesa-full-i9xx')

_gitroot="git://anongit.freedesktop.org/git/mesa/mesa"
_gitname="mesa"

build() {
   msg "Connecting to git.freedesktop.org GIT server...."

   if [ -d $startdir/src/$_gitname ] ; then
      cd $_gitname && git pull origin
      msg "The local files are updated."
   else
      git clone $_gitroot
   fi

   msg "GIT checkout done or server timeout"
   msg "Starting make..."

   rm -rf $startdir/src/$_gitname-build
   cp -rH $startdir/src/$_gitname $startdir/src/$_gitname-build
   cd ${srcdir}/${_gitname}-build

   cd "${startdir}/src/mesa-build"
   ./autogen.sh --prefix=/usr \
   --with-dri-drivers=i915 \
   --with-gallium-drivers=i915 \
   --with-dri-driverdir=/usr/lib/xorg/modules/dri \
   --enable-texture-float \
   --enable-gles1 \
   --enable-gles2 \
   --enable-openvg \
   --enable-osmesa \
   --enable-egl \
   --enable-xorg \
   --enable-xa \
   --enable-xvmc \
   --enable-vdpau \
   --enable-gallium-egl \
   --enable-glx-tls \
   --enable-glu \
   --enable-gallium-llvm \
   --enable-shared-glapi \
   --enable-gbm \
   --enable-gallium-gbm \
   --enable-gallium-g3dvl

   make || return 1
   make DESTDIR="${pkgdir}" install || return 1

   install -m755 -d "${pkgdir}/usr/lib/xorg/modules/extensions"
   ln -sf libglx.xorg ${pkgdir}/usr/lib/xorg/modules/extensions/libglx.so || return 1

   install -d ${pkgdir}/etc/profile.d
   echo '#!/bin/bash
export LIBGL_DRIVERS_PATH=/usr/lib/xorg/modules/dri:$LIBGL_DRIVERS_PATH
' >> ${pkgdir}/etc/profile.d/mesa.sh
  chmod +x ${pkgdir}/etc/profile.d/mesa.sh
}
