# Maintainer: Sander Boom <sander at inflowmotion dot nl>

pkgname=sublime-text-nightly
pkgver=2.2184
pkgrel=1
pkgdesc="sophisticated text editor for code, html and prose - nightly build"
arch=('i686' 'x86_64')
url="http://www.sublimetext.com/nightly"
license=('custom')
depends=(libpng gtk2)
conflicts=(sublime-text sublime-text-dev)

_build=2184
_arch=' x64'
_archurl='%20x64'

[[ "${CARCH}" = i686 ]] && _arch='' && _archurl=''

source=(
  "http://c758482.r82.cf2.rackcdn.com/Sublime%20Text%202%20Build%20${_build}${_archurl}.tar.bz2"
  sublime-text-nightly.desktop
  subl
)
md5sums=('1c06bad67b029ffb8d67642d0633aca6'
         '8a283b9ec350e58802a38e872f5af976'
         'bdb81002c7e5fcabadaa65611ffbe278')

[[ "${CARCH}" = i686 ]] && md5sums[0]='b252bc56c89d6e40361c112f15c82827'

build () {
  cd ${srcdir}

  install -Dm644 "${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"

  icondir="${srcdir}/Sublime Text 2/Icon"
  for dir in `ls "$icondir/"`
  do
    if [ -d "$icondir/$dir" ]; then
      install -Dm644 "${icondir}/${dir}/sublime_text.png" "${pkgdir}/usr/share/icons/hicolor/${dir}/apps/${pkgname}.png"
    fi
  done

  install -dm755 ${pkgdir}/opt
  cp -r "Sublime Text 2" ${pkgdir}/opt/${pkgname}

  install -Dm755 subl ${pkgdir}/usr/bin/subl
}
