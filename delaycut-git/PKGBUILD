# Maintainer: kfgz <kfgz at interia pl>
# Contributor: sonic414 <kevinjf at live dot in>
		
pkgname=delaycut-git
pkgver=1.4.3.7
pkgrel=1
pkgdesc="Delaycut corrects delay and is also able to cut audio files coded ac3, dts, mpa and wav, It is also able to fix CRC errors in ac3 and mpa files"
arch=('i686' 'x86_64')
url='http://download.videohelp.com/jsoto/audiotools.htm'
license=GPL3
depends=('qt4')
conflicts=('delaycut')
provides=('delaycut')
source=(http://kfgz.mydevil.net/delaycut-${pkgver}.7z)
md5sums=(c928eadac0f210d3966d23455cfc7673)

build() {
  cd "${srcdir}"/build
  qmake-qt4 CONFIG+=Linux ../delaycut/delaycut.pro
  make
}

package () {
  cd "${srcdir}"/build
  make INSTALL_ROOT="${pkgdir}" install
}