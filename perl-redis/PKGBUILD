# Generator  : CPANPLUS::Dist::Arch 1.25

pkgname='perl-redis'
pkgver='1.961'
pkgrel='1'
pkgdesc="Perl binding for Redis database"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-io-string' 'perl-try-tiny')
makedepends=('perl-test-deep' 'perl-test-fatal')
url='http://search.cpan.org/dist/Redis'
source=('http://search.cpan.org/CPAN/authors/id/M/ME/MELO/Redis-1.961.tar.gz')
md5sums=('4c367d2cc10cc900db38ca19e9665905')
sha512sums=('8f703bc9e11b4c41df7fb9f686c6bae090d907c026f36bbcead1070be458dd8462e108526db96d1ba28453d30b7b4494e35223d32ae934a678ad571b72d39e78')
_distdir="Redis-1.961"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

