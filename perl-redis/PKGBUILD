pkgdesc="Perl binding for Redis database"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-io-socket-timeout>=0.22' 'perl-try-tiny' 'perl>=5.008')
makedepends=('perl-io-string' 'perl-module-build-tiny>=0.030' 'perl-pod-coverage-trustpod')
checkdepends=('perl-test-cpan-meta' 'perl-test-deep' 'perl-test-fatal' 'perl-test-sharedfork' 'perl-test-tcp')
