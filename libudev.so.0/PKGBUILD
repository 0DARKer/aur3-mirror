pkgname=libudev.so.0
pkgver=182
pkgrel=2
pkgdesc="Is needed as dependency for packages which are statically linking on libudev.so.0"
arch=('i686' 'x86_64')
url="https://github.com/rogerwang/node-webkit"
license=('GPL2')
depends=()

if [ "$CARCH" = "i686" ]; then
  _arch='i686'
  md5sums=('aac2a8307c44692c2fc3522b8405d73a')
elif [ "$CARCH" = "x86_64" ]; then
  _arch='x86_64'
  md5sums=('466d6bf2038c031ddc0a78620a22f848')
fi

source=("http://arm.konnichi.com/core/os/$_arch/udev-182-4-$_arch.pkg.tar.xz")

package() {
  install -d "${pkgdir}/usr/lib"
  cp "$srcdir/usr/lib/libudev.so.0.13.1" "$pkgdir/usr/lib/"
  ln -s "/usr/lib/libudev.so.0.13.1" "$pkgdir/usr/lib/libudev.so.0"
}



