# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=python26-pycrypto
_pkgname=pycrypto
pkgver=2.3
pkgrel=1
pkgdesc="Collection of cryptographic algorithms and protocols, implemented for use from Python"
arch=('i686' 'x86_64')
depends=('python26')
url="http://www.dlitz.net/software/pycrypto"
license=('custom')
source=("http://ftp.dlitz.net/pub/dlitz/crypto/$_pkgname/$_pkgname-$pkgver.tar.gz")
sha256sums=('4f11e85fbcf13960373650fc2dae8f088f9b001f07fb6d3efb2fcb5334987182')

build() {
 cd "$srcdir/$_pkgname-$pkgver"
 python26 setup.py build
 python26 setup.py install --root="$pkgdir" --optimize=1

 install -Dm 644 COPYRIGHT "$pkgdir/usr/share/licenses/$pkgname/COPYRIGHT"
 cp -r LEGAL "$pkgdir/usr/share/licenses/$pkgname/"
}
