pkgname=stx2any
pkgver=latest
pkgrel=1
pkgdesc="stx2any is a conversion utility from structured text (Stx) into HTML, man, LaTeX and DocBook XML formats."
arch=(i686)
url="http://www.sange.fi/~atehwa/cgi-bin/piki.cgi/stx2any"
license=('GPL')
groups=()
depends=()
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://sange.fi/~atehwa/Stx.tar.gz)
noextract=()

build() {
  cd "$srcdir/Stx"

  cp $startdir/Makefile .

  make -ki
  make PREFIX="$pkgdir/usr" install
}

