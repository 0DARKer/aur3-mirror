# Maintainer: Bjorn Neergaard (neersighted) <bjorn@neersighted.com>
# Contributer: Peter Sutton (foxxy) <foxxy@foxdogstudios.com>

pkgname=ngrok
pkgver=1.7
pkgrel=7
pkgdesc='A tunneling, reverse proxy for developing and understanding networked, HTTP services'
url='http://github.com/inconshreveable/ngrok'
license=('Apache')
source=("git://github.com/inconshreveable/ngrok.git#tag=${pkgver}")
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
arch=('i686' 'x86_64')
depends=()
makedepends=('bzr' 'git' 'go' 'mercurial')
conflicts=('ngrok')
provides=('ngrok')

build() {
  cd ngrok

  # Build it!
  # Makefile is partially broken, so we can't build in parallel.
  make -j1 release-all
}

package() {
  cd ngrok
  install -Dm755 bin/ngrok  $pkgdir/usr/bin/ngrok
  install -Dm755 bin/ngrokd $pkgdir/usr/bin/ngrokd
}

# vim:set ts=2 sw=2 et:
