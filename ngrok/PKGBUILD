# Maintainer: neersighted <n@neersighted.com>

pkgname=ngrok
pkgver=1.6
pkgrel=2
pkgdesc='A tunneling, reverse proxy for developing and understanding networked, HTTP services'
url='http://github.com/inconshreveable/ngrok'
license=('MIT')
# Add a newline because of an AUR bug.
source=('git://github.com/inconshreveable/ngrok.git#tag=1.6'
)
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
arch=('i686' 'x86_64')
depends=()
makedepends=('bzr' 'git' 'go' 'mercurial')
conflicts=('ngrok')
provides=('ngrok')

build() {
  cd "${srcdir}/ngrok"

  # Build it!
  make release-all
}

package() {
  cd "${srcdir}/ngrok"

  # Install the program.
  install -Dm755 "bin/ngrok" "${pkgdir}/usr/bin/ngrok"
}

# vim:set ts=2 sw=2 et: