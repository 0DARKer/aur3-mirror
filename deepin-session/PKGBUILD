# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>

pkgname=deepin-session
pkgver=2.0
pkgrel=1
pkgdesc="Deepin desktop session"
arch=('any')
url="http://www.linuxdeepin.com"
license=('GPL2')
depends=('gnome-session' 'gnome-settings-daemon')
source=("http://packages.linuxdeepin.com/deepin/pool/main/d/$pkgname/${pkgname}_${pkgver}-2.tar.gz")
sha256sums=('bca01884868bdb72ca1a05db892761c5895b1ecdd0e1690ffdef2f7fbaea017a')

package() {
  cd "$srcdir"/$pkgname-$pkgver

  mkdir -p "${pkgdir}"/usr/share/xsessions/
  mkdir -p "${pkgdir}"/usr/share/gnome-session/sessions/
  install -m 0755 debian/deepin.desktop "${pkgdir}"/usr/share/xsessions/
  install -m 0755 debian/deepin.session "${pkgdir}"/usr/share/gnome-session/sessions/
}
