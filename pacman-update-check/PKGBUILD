# Maintainer: Brendan Hide <brendan at swiftspirit dot co dot za>
# Contributor: Brendan Hide <brendan at swiftspirit dot co dot za>
pkgname=pacman-update-check
pkgver=0.1
pkgrel=4
pkgdesc="Basic Update checker for pacman. Importantly, it does not touch the system's live pacman database. Best used with crontab set to email the results to the system administrator"
arch=("any")
url="http://swiftspirit.co.za/scripts/"
license=('GPL')
depends=('package-query' 'pacman')

source=("pacman-update-check")
md5sums=('d8d01891948293cc6ef56b4a982c9155')

package() {

  cd $pkgdir
  mkdir -p $pkgdir/usr/sbin
  cp -dpr --no-preserve=ownership "../pacman-update-check" "$pkgdir/usr/sbin/"

}
#vim: set ft=PKGBUILD sw=2 ts=2 et
