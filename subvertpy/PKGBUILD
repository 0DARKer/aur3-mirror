pkgname=subvertpy
pkgver=0.7.5
pkgrel=1
pkgdesc="Alternative Python bindings for Subversion, split out from bzr-svn."
arch=('i686' 'x86_64')
url="https://launchpad.net/subvertpy"
license=('GPL3')
depends=('python2')
source=("http://launchpad.net/${pkgname}/trunk/0.7.5/+download/${pkgname}-${pkgver}.tar.gz")
md5sums=('2e84979c7380a396d6beec278f2d6104')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  sed -i 's|man/man1|share/man/man1|' setup.py
  python2 setup.py install --root=${pkgdir}
}
