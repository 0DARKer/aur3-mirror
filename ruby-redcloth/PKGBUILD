# Contributor: gem2arch 0.1
pkgname=ruby-redcloth
pkgver=4.2.2
_realname="RedCloth"
pkgrel=1
pkgdesc="Textile parser for Ruby"
arch=(any)
url="http://redcloth.org/"
license=("GPL")
depends=('ruby')
source=(http://gems.rubyforge.org/gems/RedCloth-$pkgver.gem)
noextract=(RedCloth-$pkgver.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_realname}-$pkgver.gem
}
md5sums=('599ca833f131c8c1aa2d7bf5b0e9ede1')
