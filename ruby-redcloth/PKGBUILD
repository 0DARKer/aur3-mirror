# Contributor: oliparcol <oliparcol[at]gmail.com>

pkgname=ruby-redcloth
_gemname=RedCloth
pkgver=4.2.8
pkgrel=1
pkgdesc="Module for using the Textile markup language in Ruby."
provides=(redcloth)
replaces=(redcloth)
conflicts=(redcloth)
arch=(i686 x86_64)
url="http://redcloth.org/"
license=('MIT')
depends=('ruby')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=("$_gemname-$pkgver.gem")
md5sums=('9e73fda9c763c0c37efeec62fca33693')

build() {
  cd "$srcdir"

  local _gemdir=$(ruby -rubygems -e'puts Gem.default_dir')
  gem install --ignore-dependencies --verbose \
    -i "$pkgdir$_gemdir" -n "$pkgdir"/usr/bin "$_gemname-$pkgver.gem"
}
