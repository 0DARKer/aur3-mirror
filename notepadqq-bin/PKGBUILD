pkgname=notepadqq-bin
pkgver=0.31.0
_pkgver=0.31.0-1~trusty1
pkgrel=1
pkgdesc="A Linux clone of Notepad++"
arch=('i686' 'x86_64')
url="http://notepadqq.altervista.org/wp/"
license=('GPL3')
depends=('qt5-webkit=5.3.1' 'hicolor-icon-theme' 'desktop-file-utils' 'file')
makedepends=('')
options=('!strip')

case ${CARCH} in
	i686)
		_source_arch="i686"
		sha1sums=('05891d7e14c9fe0c1392404cbc752a4ab9a1582f'
				  '3f522228673391ab18e5bdf3cd90724d75074d8c')
		;;
		
	x86_64)
		_source_arch="amd64"
		sha1sums=('c9a0da5186801ab889ea0ea015fbb21b380d005d'
				  '3f522228673391ab18e5bdf3cd90724d75074d8c')
		depends+=('gcc-libs-multilib')
		;;
esac

source=(http://ppa.launchpad.net/notepadqq-team/notepadqq/ubuntu/pool/main/n/notepadqq/notepadqq_${_pkgver}_${_source_arch}.deb
        "${pkgname}.install")

package() {
  cd ${srcdir}
  
  bsdtar -xf data.tar.xz --exclude lintian -C ${pkgdir}
}
