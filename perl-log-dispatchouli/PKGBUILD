# CPAN Name  : Log-Dispatchouli
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
pkgname='perl-log-dispatchouli'
pkgver='1.100712'
pkgrel='1'
pkgdesc="a simple wrapper around Log::Dispatch"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-log-dispatch' 'perl-log-dispatch-array' 'perl-params-util' 'perl-string-flogger' 'perl-test-deep' 'perl-try-tiny>=0.04')

url='http://search.cpan.org/dist/Log-Dispatchouli'

source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Log-Dispatchouli-1.100712.tar.gz')
md5sums=('9966cd95880556ea2e8de83098dda093')

build() {
  DIST_DIR="${srcdir}/Log-Dispatchouli-1.100712"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

