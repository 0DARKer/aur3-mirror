# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=octave-hg  
pkgver=14660
pkgrel=1
pkgdesc="A high-level language, primarily intended for numerical computations."
url="http://www.octave.org"
arch=('i686' 'x86_64')
license=('GPL')
depends=('fftw>=3.2.2' 'curl' 'fltk' 'hdf5' 'glpk' 'lapack' \
  'graphicsmagick>=1.3.6' 'qrupdate')
makedepends=('pcre' 'mercurial' 'texinfo' 'gcc-fortran' 'git' 'gperf')
# For building the documentation, epstool and fig2dev are searched during 
# build. The build works without them, but you may want to install 
# transfig from [extra] and epstool from AUR
optdepends=('texinfo: for help-support in octave'
            'gnuplot: alternative plotting')
conflicts=('octave' 'octave3' 'octave-suitsparse')
provides=('octave')
install=octave.install
options=('!emptydirs')
soource=()

_hgroot=http://hg.savannah.gnu.org/hgweb
_hgrepo=octave

build() {
  if [[ -d $srcdir/gnulib ]] ; then
    msg2 "Connecting to Savannah for fetching new gnulib sources"
    cd gnulib && git pull origin
    msg "The gnulib files are updated."
    cd ..
  else
    msg2 "Connecting to Savannah for fetching all gnulib sources"
    git clone git://git.savannah.gnu.org/gnulib.git gnulib
  fi
  msg "Connecting to $_hgroot"
   if [[ -d $_hgrepo ]]; then
     cd $_hgrepo
     hg pull -u 
     msg2 "Finished updating the local repository!"
   else
    hg clone $_hgroot $_hgrepo
    msg2 "Initial pull complete!"
  fi

  cd $srcdir
  
  [ -d ${_hgrepo}-build ] && rm -rf ${_hgrepo}-build
  hg clone ${_hgrepo} ${_hgrepo}-build
  cd ${_hgrepo}-build

  ./autogen.sh --no-git --gnulib-srcdir=$srcdir/gnulib 
#  sed -i 's+#include <curl/types.h>++' src/DLD-FUNCTIONS/urlwrite.cc
  cd src
  ln -s oct-parse.hh oct-parse.h
  cd ..
  ./configure --prefix=/usr --libexecdir=/usr/lib --enable-shared 
  make
}
package() {
  cd ${_hgrepo}-build
  make DESTDIR=${pkgdir} install
  install -D -m644 \
    ${pkgdir}/usr/share/applications/www.octave.org-octave.desktop \
    ${pkgdir}/usr/share/applications/octave.desktop
} 
