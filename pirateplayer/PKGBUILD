pkgname=pirateplayer
pkgver=0.4.2
pkgrel=1
pkgdesc="Qt-based utility for downloading (and in the future watching) swedish programming"
url="http://pirateplay.se/player.html"
license="GPL"
arch=('i686' 'x86_64')
depends=('qt' 'qtwebkit' 'rtmpdump' 'ffmpeg')
#makedepends=('git')
conflicts=('pirateplayer')
provides=('pirateplayer')
#source=(http://github.com/jackuess/pirateplayer/tarball/v0.4.2)
source=(http://github.com/jackuess/$pkgname/tarball/v$pkgver)
md5sums=('18b69edf51c626f7db05f2cb6dce2831')

build() {
    cd "${srcdir}/jackuess-${pkgname}-3bd5eec"
    qmake PREFIX=/usr || return 1
}

package() {
    cd "${srcdir}/jackuess-${pkgname}-3bd5eec"
    make INSTALL_ROOT=${pkgdir} install || return 1
}
