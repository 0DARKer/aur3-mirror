# Contributor: Håvar Nøvik  <havar.novik@gmail.com>

pkgname=vimpression-git
pkgver=20090527
pkgrel=1
pkgdesc="An ultralight webkit based browser with vimperator like control(rewrite branch of the webkitbrowser). Alpha release with many planned features missing"
arch=('i686' 'x86_64')
url="https://projects.ring0.de/webkitbrowser/"
license=('MIT')
depends=('libwebkit') 
makedepends=('git')

_gitroot="git://projects.ring0.de/vimpression.git"
_gitname="vimpression"

build() {
    cd ${srcdir}

    msg "Connecting to GIT server..."

    if [ -d $_gitname ]; then
        cd $_gitname && git pull origin
        cd ..
        msg "The local files are updated."
    else
        git clone $_gitroot
    fi


    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    cd $_gitname

    git checkout -b rewrite origin/rewrite

    make || return 1
    
    mkdir -p ${startdir}/pkg/usr/bin

    install -m 755 vimpression ${startdir}/pkg/usr/bin/vimpression
}
