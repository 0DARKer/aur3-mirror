# Maintainer: <fsmail[at]kondorgulasch[dot]de>
pkgname=pidgin-xmpp-receipts
pkgver=0.3
pkgrel=1
pkgdesc="This pidgin-plugin implements xmpp message delivery receipts (XEP-0184)"
url="https://www.assembla.com/code/pidgin-xmpp-receipts/git/nodes"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('pidgin' 'libpurple')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=('https://www.assembla.com/spaces/pidgin-xmpp-receipts/documents/aZHiPOpzGr4PsYacwqEsg8/download/aZHiPOpzGr4PsYacwqEsg8');
md5sums=('aa8fd6705f0e24406a12a039e15d9b54')

build() {
	cd "${srcdir}"

	make
}

package() {
  cd "${srcdir}"

  mkdir -p "${pkgdir}/usr/lib/pidgin"
  cp xmpp-receipts.so "${pkgdir}/usr/lib/pidgin"

}
