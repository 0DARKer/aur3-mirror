# Maintainer: Alessio 'mOLOk' Bolognino <themolok@gmail.com>

pkgname=macbook-backlight
pkgver=20070125
pkgrel=1
pkgdesc="Command line program to set Apple MacBook (NOT Pro) backlight"
arch=('i686')
url="http://desrt.mcmaster.ca/macbook.xhtml"
license="GPL2"
depends=('pciutils')
source=(http://desrt.mcmaster.ca/code/macbook-backlight/macbook-backlight.c)
md5sums=('236112602e8a85ecc93c672ffd22dca6')
build() {
	mkdir -p $startdir/src/macbook-backlight/
	cd $startdir/src/macbook-backlight
	mv ../macbook-backlight.c .
	gcc macbook-backlight.c -o macbook-backlight -lpci
	install -D -m755 macbook-backlight $startdir/pkg/usr/bin/macbook-backlight
}
