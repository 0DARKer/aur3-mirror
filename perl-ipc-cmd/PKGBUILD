options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/IPC-Cmd'
source=('http://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/IPC-Cmd-0.80.tar.gz')
md5sums=('2f4c74a1c91e67dd80ef6dc5c5ebaed4')
