# Maintainer: Michael Lass <bevan@bi-co.net>
# Contributor: Mark Rosenstand <mark@archlinux.org>
pkgname=krb5-auth-dialog
pkgver=3.8.0
pkgrel=1
pkgdesc="Monitors Kerberos tickets and pops up a dialog when they are about to expire."
arch=('i686' 'x86_64')
url="https://honk.sigxcpu.org/piki/projects/krb5-auth-dialog/"
license=('GPL')
depends=('libgnomeui' 'gtk3' 'gnome-doc-utils' 'dconf')
makedepends=('gettext' 'intltool' 'pkgconfig')
install=$pkgname.install
source=("http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz")
sha256sums=('3446b38caa61b39660ac73be1cc25a63366936384c36e8d1fad5962af8cb3edf')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure \
    --disable-schemas-compile \
    --prefix=/usr \
    --sysconfdir=/etc \
    --enable-pkinit \
    --enable-network-manager
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
