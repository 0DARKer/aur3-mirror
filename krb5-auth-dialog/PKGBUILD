# Maintainer: Michael Lass <bevan@bi-co.net>
# Contributor: Mark Rosenstand <mark@archlinux.org>
pkgname=krb5-auth-dialog
pkgver=0.17
pkgrel=5
pkgdesc="Monitors Kerberos tickets and pops up a dialog when they are about to expire."
arch=('i686' 'x86_64')
url="https://honk.sigxcpu.org/piki/projects/krb5-auth-dialog/"
license=('GPL')
depends=('libgnomeui' 'gnome-doc-utils')
makedepends=('gettext' 'intltool' 'pkgconfig')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz $pkgname.patch)
md5sums=('3a6ce0ba9a3a76b144a079af4666628e' '8f86034a1eb69d28d2435ab9aeb07015')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -Np1 -i $srcdir/$pkgname.patch || return 1
  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
