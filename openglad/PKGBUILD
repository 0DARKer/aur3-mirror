# Contributor: Lava Croft <lava.croft@trioptimum.com>
pkgname=openglad
pkgver=0.98
pkgrel=1
pkgdesc="SDL port of an old DOS game called Gladiator"
arch=(i686)
url="http://snowstorm.sourceforge.net/"
license=('GPL')
depends=('sdl_mixer')
source=(http://dl.sourceforge.net/sourceforge/snowstorm/$pkgname-$pkgver.tar.gz)
md5sums=('e211c0ba876a75215dd99f7925783ea4')
 
build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --bindir=/usr/bin --datadir=/usr/share/openglad
  make || return 1
  make DESTDIR=$startdir/pkg install
}
