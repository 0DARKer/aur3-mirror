pkgname='perl-object-accessor'
pkgver='0.36'
pkgrel='1'
pkgdesc="Per object accessors"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Object-Accessor'
source=('http://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Object-Accessor-0.36.tar.gz')
md5sums=('405c62b7ee2ece70744f72b2eee230c6')

build() {
  _DISTDIR="${srcdir}/Object-Accessor-0.36"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
