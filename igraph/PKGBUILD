pkgname=igraph
pkgver=0.5.4
pkgrel=1
pkgdesc="A library for creating and manipulating (un)directed graphs."
arch=('i686' 'x86_64')
url="http://igraph.sourceforge.net/index.html"
license=('GPL2')
depends=('libxml2' 'gmp')
options=('!libtool')
source=("http://switch.dl.sourceforge.net/sourceforge/igraph/$pkgname-$pkgver.tar.gz")
md5sums=('47963ece64fe5f793e154e238bc6c3c3')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

