# Contributor Madek <gonzaloseguel@gmail.com>

pkgname=marlin-bin
pkgver=0.1.0~397
_realpkgver=0.1-0~397
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Marlin File Manager"
url="http://launchpad.net/marlin"
license=('GPL')
depends=('gtk3' 'libgee' 'glib2' 'cairo' 'libnotify')
makedepends=('deb2targz')
conflicts=(marlin-bzr)
install=marlin-bin.install

# LATEST BUILDS FAIL, SO HAD TO REPLACE SOURCE WITH ONE FROM THE ARCHIVES

if test "$CARCH" == i686; then
  _arch='i386'
  source=(http://ppa.launchpad.net/eloaders/marlin-daily/ubuntu/pool/main/m/marlin/marlin_${_realpkgver}~oneiric1_${_arch}.deb)
  md5sums=('9bc6f87fa8216aaec05af18e4d69ed2a')
fi

if test "$CARCH" == x86_64; then
  _arch='amd64'
  source=(http://ppa.launchpad.net/eloaders/marlin-daily/ubuntu/pool/main/m/marlin/marlin_${_realpkgver}~oneiric1_${_arch}.deb)
  md5sums=('e55e31d4ebd8faac2d186e555cc3bb64')
fi

build() {
  deb2targz marlin_${_realpkgver}~oneiric1_${_arch}.deb
  tar xzf marlin_${_realpkgver}~oneiric1_${_arch}.tar.gz
  cp -R usr/ ${pkgdir}/usr
}
