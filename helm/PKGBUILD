pkgname=helm
pkgver=0.3
pkgrel=1
pkgdesc="helm is a system monitor written in python"
arch=('any')
url="http://helm.last-exile.org/"
license=('GPL3')
depends=('python2>=2.6' 'pygtk>=2.17' 'python-imaging>=1.1.7'
         'python-xlib>=0.14')
makedepends=('python2')
source=("http://helm.last-exile.org/sources/helm-${pkgver}.tar.bz2")
md5sums=('223a220c226994b74af7d782d9a53f27')


build() {
  cd $srcdir/$pkgname-$pkgver
  sed -i 's/python/python2/g' helm_launcher.py
  python2 ./setup.py install --root=$pkgdir
}
