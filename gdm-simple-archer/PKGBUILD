#Contributor: grimi <grimi at poczta dot fm>

pkgname=gdm-simple-archer
oriname=simple-archer
pkgver=1.0
pkgrel=2
pkgdesc="Archer ArchLinux theme"
arch=('any')
url="http://www.archlinux.org"
license=('GPL')
depends=('gdm-old')
makedepends=('plowshare')
source=($([ -f $oriname.tar.gz ] && echo $oriname.tar.gz || \
        plowdown "http://depositfiles.com/files/yeabyj3jg"))
md5sums=('a7344dc99f238bd8401811e2899a99e3')
           
build() {
  install -d $pkgdir/usr/share/gdm/themes/$oriname
  cd $pkgdir/usr/share/gdm/themes/$oriname
  install -m644 $srcdir/$oriname/*.* ./
}
