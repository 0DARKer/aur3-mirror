# Maintainer: Pierre Bourdon <delroth@gmail.com>

pkgname=ocaml-bitstring
pkgver=2.0.2
pkgrel=1
pkgdesc="A library adding Erlang-style bitstrings and matching over bitstrings to OCaml."
arch=(i686 x86_64)
url="http://code.google.com/p/bitstring/"
license=(GPL2)
depends=(glibc)
makedepends=(ocaml time ocaml-findlib)
source=(http://bitstring.googlecode.com/files/$pkgname-$pkgver.tar.gz
        makefile-destdir.patch)

build() {
     cd $srcdir/$pkgname-$pkgver

    patch -Np0 -i $srcdir/makefile-destdir.patch || return 1

     ./configure --prefix=/usr || return 1
     make || return 1
     make DESTDIR=$startdir/pkg install
}

md5sums=('0c9fa24a0e5201e8bb61f355b9058fe9'
         '4d2069eb0dadc05268317723fbaa88bc')
