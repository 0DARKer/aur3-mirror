sha256sums=('56aca720eaec72709dca282116d6843cb24b765d528d61d55655648aa7f75c1b')

package() {
  install -d ${pkgdir}/usr/bin
  install -m755 ${srcdir}/${pkgname}.sh ${pkgdir}/usr/bin/${pkgname}
}
