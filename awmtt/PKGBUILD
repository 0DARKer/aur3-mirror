pkgname=awmtt
pkgver=0.4
pkgrel=2
pkgdesc="Test and preview your AwesomeWM configuration with Xephyr"
arch=("any")
url="https://github.com/mikar/awmtt"
license=("MIT")
depends=("xorg-server-xephyr")
