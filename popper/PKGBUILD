pkgname=popper
pkgver=0.1
pkgrel=1
pkgdesc="Popper is a software project aiming at building a decentralized network file system. The difference between Popper and NFS, is that NFS is centralized."
arch=(i686 x86_64)
license=('GPL')
url="http://popper.yrado.com/"
depends=()
options=()
source=("http://popper.yrado.com/popper-$pkgver/popper-0.1_src.tar.bz2")
md5sums=('ef8e10d69cc404ed6c5bd320980a570c')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}

  make all || return 1

  mkdir -p ${startdir}/pkg/usr/bin || return 1 
  install -m755 bin/cmd/*  ${startdir}/pkg/usr/bin/ || return 1
}
