# Maintainer: Serge Zirukin <ftrvxmtrx@gmail.com>
# Contributor: Justin Davis <jrcd 83 at gmail>

pkgname=cppo
pkgver=0.9.2
pkgrel=1
pkgdesc="The C preprocessor written in OCaml"
arch=('i686' 'x86_64')
license=('BSD')
depends=('ocaml')
url='http://martin.jambon.free.fr/cppo.html'
_extdir="${srcdir}/${pkgname}-${pkgver}"
source=("http://martin.jambon.free.fr/${pkgname}-${pkgver}.tar.gz")
md5sums=('8c583440a69762165ef82bfab65fe021')

build() {
  cd "$_extdir"
  make
}

package() {
  cd "$_extdir"
  mkdir -p "${pkgdir}/usr/bin"
  make install BINDIR="${pkgdir}/usr/bin"
}
