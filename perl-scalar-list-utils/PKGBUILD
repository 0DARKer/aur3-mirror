pkgname='perl-scalar-list-utils'
pkgver='1.23'
pkgrel='4'
pkgdesc="Scalar utilities (dualvar reftype etc)"
arch=('i686' 'x86_64')
url='http://search.cpan.org/dist/Scalar-List-Utils'
license=('PerlArtistic' 'GPL')
depends=('perl')

replaces=('perl-scalar-util')
options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/G/GB/GBARR/Scalar-List-Utils-1.23.tar.gz')
md5sums=('2e7909f8737cd6eecd8520b77326916b')

build() {
  DIST_DIR="${srcdir}/Scalar-List-Utils-1.23"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

