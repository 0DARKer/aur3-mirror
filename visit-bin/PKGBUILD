# Contributor: Dmitriy Morozov <archlinux@foxcub.org> 
pkgname=visit-bin
_pkgname=visit
pkgver=2.1.1
_pkgver=2_1_1
pkgrel=1 
pkgdesc="Interactive parallel visualization and graphical analysis tool"
url="https://wci.llnl.gov/codes/visit/"
arch=('x86_64')
license="BSD" 
depends=()
source=(https://wci.llnl.gov/codes/${_pkgname}/$pkgver/${_pkgname}${_pkgver}.linux-x86_64.tar.gz
        https://wci.llnl.gov/codes/${_pkgname}/$pkgver/${_pkgname}-install${_pkgver}
        visit-bin.sh)
md5sums=('1a088866458ffc431b013bdafb5ef600'
         '9537424905f5a9bc6ff4e27ff531be1f'
         'eda322f9745ff8ace1cfbec7536929df')

build() 
{ 
    cd $srcdir
    mkdir -p $pkgdir/opt/$_pkgname
    csh $_pkgname-install$_pkgver -c none $pkgver linux-x86_64 $pkgdir/opt/$_pkgname
    mkdir -p $pkgdir/etc/profile.d/
    install -m 755 visit-bin.sh $pkgdir/etc/profile.d/
}
