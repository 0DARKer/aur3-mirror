pkgdesc="return a given list only if they are all defined"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.008')
makedepends=()
url='http://search.cpan.org/dist/PerlX-Maybe'
source=('http://search.cpan.org/CPAN/authors/id/T/TO/TOBYINK/PerlX-Maybe-0.003.tar.gz')
