# Maintainer: Anshuman Bhaduri <anshuman (dot) bhaduri 0 (at) gmail (dot) com>

pkgname=ruby-vnc
pkgver=1.0.1
pkgrel=1
pkgdesc="A library which implements the client VNC protocol to control VNC servers."
arch=('any')
url="http://code.google.com/p/ruby-vnc/"
license=('MIT')
depends=('ruby' 'rubygems')
source=(http://rubygems.org/downloads/${pkgname}-${pkgver}.gem)
noextract=(${pkgname}-${pkgver}.gem)
md5sums=('482af2ebd2a2dd4c9e5749666a4cf388')

package() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies \
    -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${pkgname}-${pkgver}.gem

  install -Dm644 $(find "${pkgdir}" -name COPYING) \
    "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
