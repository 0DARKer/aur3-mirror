pkgname='perl-data-validate-domain'
pkgver='0.09'
pkgrel='1'
pkgdesc="Light weight module for validating domains"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-net-domain-tld>=1.62')
url='http://search.cpan.org/dist/Data-Validate-Domain'
source=('http://search.cpan.org/CPAN/authors/id/N/NE/NEELY/Data-Validate-Domain-0.09.tar.gz')
md5sums=('1a93bc17353b4cad7b9c6483b3504f16')

build() {
  _DISTDIR="${srcdir}/Data-Validate-Domain-0.09"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
