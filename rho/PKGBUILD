# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=rho
pkgver=1.0.3
pkgrel=1
pkgdesc="A small, very configurable console-based text editor."
arch=(i686 x86_64)
url="http://rho.tuxfamily.org/"
license=('GPL')
depends=('ncurses')
install="$pkgname.install"
source=($url$pkgname-$pkgver.tar.bz2)
md5sums=('7b2bb30a3e586b926b3aed7b591919ff')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # force DESTDIR in Makefile
  sed -i "s| \(/usr\)| $pkgdir\1|g" Makefile

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  # prepare dirs
  install -d "$pkgdir"/usr/{bin,share/$pkgname}

  make install

  # readme
  install -Dm644 README "$pkgdir/usr/share/$pkgname"
}

# vim:set ts=2 sw=2 et:
