# 

pkgname=outwiker
_pkgname=Outwiker
pkgver=1.3.2
pkgrel=1
arch=('any')
pkgdesc="Outliner and personal wiki with keeping the tree of notes in the form of directories on disk"
url="http://jenyay.net/Soft/Outwiker"
license=('GPL3')
depends=('wxpython' 'pywebkitgtk')
conflicts=(outwiker-bzr)
source=("http://jenyay.net/uploads/Soft/$_pkgname/$pkgname-$pkgver-1.deb")

build() {
   /bin/true
}

package() {  
   ar x $pkgname-$pkgver-1.deb
   tar xf data.tar.gz -C $pkgdir
   cd $pkgdir
   # python2 fix
   sed -i -e 's/Exec=python /Exec=python2 /' ${pkgdir}/usr/share/applications/outwiker.desktop
   for file in $(find . -name '*.py' -print); do
      sed -i 's_#!.*/usr/bin/python_#!/usr/bin/python2_' $file
      sed -i 's_#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' $file
   done
}
md5sums=('ef7c31600d555a414be47ee7d08cf20f')
