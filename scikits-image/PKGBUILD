# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=scikits-image
pkgver=0.3.1
pkgrel=1
pkgdesc="Image processing routines for SciPy"
arch=('i686' 'x86_64')
url="http://scikits-image.org/"
license=('BSD')
depends=('python2' 'python2-numpy>=1.4' 'python2-scipy' 'python-imaging' 'scikits-base')
makedepends=('python2-distribute' 'cython>=0.13')
optdepends=('opencv: OpenCV support'
            'python2-qt: Qt implementation of imshow and scivy'
            'pygtk: GTK implementation of imshow')
options=(!emptydirs)

source=("http://pypi.python.org/packages/source/s/scikits.image/scikits.image-${pkgver}.tar.gz")
md5sums=('d8bcff8ee17fa089ce6a131319e43b9e')

build() {
  cd "$srcdir/scikits.image-${pkgver}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
  rm "$pkgdir/`python2 -c 'from distutils.sysconfig import get_python_lib; \
    print get_python_lib()'`/scikits/__init__.py"
}

