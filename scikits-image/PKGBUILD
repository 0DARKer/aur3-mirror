pkgname=scikits-image
pkgver=0.4
_pkgtag=85531c6
pkgrel=2
pkgdesc="Image processing routines for SciPy"
arch=('i686' 'x86_64')
url="http://scikits-image.org/"
license=('BSD')
depends=('python2' 'python2-numpy>=1.4' 'python2-scipy')
makedepends=('python2-distribute' 'cython2>=0.13')
optdepends=('python2-qt: Qt implementation of imshow and scivy'
            'pygtk: GTK implementation of imshow')
options=(!emptydirs)

#source=("http://pypi.python.org/packages/source/s/scikits.image/scikits.image-${pkgver}.tar.gz")
source=("https://github.com/scikits-image/scikits-image/tarball/v${pkgver}")
md5sums=('1d94df1e461ce775655c20f4a2ba83d5')

build() {
#  cd "$srcdir/scikits.image-${pkgver}"
  cd "$srcdir/scikits-image-scikits-image-${_pkgtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

