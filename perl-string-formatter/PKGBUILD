pkgname='perl-string-formatter'
pkgver='0.102080'
pkgrel='1'
pkgdesc="build sprintf-like functions of your own"
arch=('any')
url='http://search.cpan.org/dist/String-Formatter'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-params-util' 'perl-sub-exporter')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/String-Formatter-0.102080.tar.gz')
md5sums=('c53463f6c226faf3f61e3a25ede18849')

build() {
  DIST_DIR="${srcdir}/String-Formatter-0.102080"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

