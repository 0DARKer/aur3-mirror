#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=cronwhip
pkgver=2012.3
pkgrel=1
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.3.tar.xz
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.3.tar.xz.sig
)
sha512sums=(
  a0e9f3665fdfb80301c1d41fa117c433b925fd85038c42736659f1f63e647ad32823210d8ba17632c43de1037244db5b41a2857239deee249b25dda9c3bd6b72
  ccf5c80ca02f0e7b108b1ce632caee6dd4edf69c5bab33a567f86446d3d0e1a0326e268d506fcc87fc9e74a79dcbe405c24540914fd01cf99b6cdbb5301d5403
)
md5sums=(
  284f32f98a489ceb35e333a44281f997
  284887a5ca5bc44f42d4f6af00baae89
)
install=cronwhip.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm755 cronwhipd "${pkgdir}/etc/rc.d/cronwhipd"
}

