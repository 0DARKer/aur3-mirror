#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=cronwhip
pkgver=2012.4
pkgrel=1
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.4.tar.xz
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.4.tar.xz.sig
)
sha512sums=(
  64a04ab4607aacd632294e3b53224db660b97e341c7a3ccb92af2fd779bc2e556e73ab00f54d57e84a62f5749d657bb319f4fd425e0d4039adbe6af6923cb126
  0d782b18569093f299dca3453b986a26b50376e93458dec9ce45dcbd0f10dfd794aafe71788d511f5e483eaeecbb582e887423f0f6583589abb59ac8b3c75ed0
)
md5sums=(
  09c038ba07ec14163ede198481bc9b8d
  9582e97d0c10d2df091903ae738827fb
)
install=cronwhip.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm755 cronwhipd "${pkgdir}/etc/rc.d/cronwhipd"
}

