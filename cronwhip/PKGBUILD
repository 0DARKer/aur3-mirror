#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=cronwhip
pkgver=2012.02.29.51733
pkgrel=1
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3)
source=(http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.02.29.51733.tar.xz)
sha512sums=(e4da4a42e87f01c72f5c1b4429fc0dda21b438b2f2132d8465eea49acfa0d8b9de52cc021bed2fbddea06436dc0eba4584328d026e144a851ae4d880fa8acce1)
md5sums=(da015d5b2cb59ea236ef19f2d2a89006)
install=cronwhip.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm755 cronwhipd "${pkgdir}/etc/rc.d/cronwhipd"
}

