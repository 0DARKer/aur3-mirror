pkgname=cronwhip
pkgver=2012.02.29.51733
pkgrel=2
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.02.29.51733.tar.xz
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.02.29.51733.tar.xz.sig
)
sha512sums=(
  e4da4a42e87f01c72f5c1b4429fc0dda21b438b2f2132d8465eea49acfa0d8b9de52cc021bed2fbddea06436dc0eba4584328d026e144a851ae4d880fa8acce1
  3453f18c7b6efdfe62cce3edcd4e7bb4d405b81ec716bd4f9da78fe312c233a18e31e7346258a1847b78940158459bdccc06db8ae2f5050b34bad0395d1550e5
)
md5sums=(
  da015d5b2cb59ea236ef19f2d2a89006
  102146089a489796488f0f0727b0a26e
)
install=cronwhip.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm755 cronwhipd "${pkgdir}/etc/rc.d/cronwhipd"
}

