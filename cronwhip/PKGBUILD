#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=cronwhip
pkgver=2014.2.24
pkgrel=2
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3 sysvinit-tools)
source=(
  http://xyne.archlinux.ca/projects/cronwhip/src/cronwhip-2014.2.24.tar.xz
  http://xyne.archlinux.ca/projects/cronwhip/src/cronwhip-2014.2.24.tar.xz.sig
)
sha512sums=(
  9c87d371aec5122060d4f258b533b41429cc3acdedc352e53e487d0c9763ed1903fa5e2a81c27569df21cf528c390293581ceba6890506b4c988228e9d37ad1d
  f2b8051c06138c3c3478fab88a8f380546cbfbb7eb706b8746fc411fd5b5f36c9a9651df3a6f4b2ec57064ac10eda620df7a3c3019417539752037ee8183a340
)
md5sums=(
  60f7ba7a48638f6f5c571f73a7f8b6ed
  b2fbc336cc022f513cf00811b8505701
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm644 "$pkgname.service" "$pkgdir/usr/lib/systemd/system/$pkgname.service"
}

