#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=cronwhip
pkgver=2012.4.8
pkgrel=1
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.4.8.tar.xz
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.4.8.tar.xz.sig
)
sha512sums=(
  fed59c2e3a82478e50f1d205a5edf27d9be93c1ff0f9e8b42ba096f88144e199fe164703051a2c574fbf54ab70f871f1cb510d333d2e203e7f51a2660598f1a6
  835054c1b7f662a39b22b135b705a1a077867ceb6ada33b2396095bcc897790459583f3ffe6451b89d73ec551d7a0aff95275012d49c4a8dcba64938cc4de259
)
md5sums=(
  0850bd1b4165d2687125d07676f87cc3
  c7ed4cc7cea55d225470c8271be6b4f2
)
install=cronwhip.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm755 cronwhipd "${pkgdir}/etc/rc.d/cronwhipd"
}

