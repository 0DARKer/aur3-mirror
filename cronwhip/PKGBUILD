#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=cronwhip
pkgver=2012.12.24
pkgrel=1
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3 sysvinit)
source=(
  http://xyne.archlinux.ca/projects/cronwhip/src/cronwhip-2012.12.24.tar.xz
  http://xyne.archlinux.ca/projects/cronwhip/src/cronwhip-2012.12.24.tar.xz.sig
)
sha512sums=(
  4861836ba51fd8f9dd8535b011d8ca41ea0f4955b73fab29e1a40a36ef158d1936f231cbfd0de89d81dcb91874c595f55d2227749ca4f194f91db2c114520b7a
  d14b175071df105b315bd8fb50fbb18f62f5542f0d67c7532da2ac91a4a3caefcb730c9659dc9db4aac8039a2dc8e69c8cd034c11c88fee23d71bffdbf8843f6
)
md5sums=(
  ddc424c2c89c7099fcc98534580efcb6
  4b1e2d560d355109ea3adce486e8f7ee
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm755 cronwhipd "${pkgdir}/etc/rc.d/cronwhipd"
  install -Dm644 "$pkgname.service" "$pkgdir/usr/lib/systemd/system/$pkgname.service"
}

