#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=cronwhip
pkgver=2012.5
pkgrel=1
pkgdesc='Run missed cronjobs.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/cronwhip"
depends=(python3)
source=(
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.5.tar.xz
  http://xyne.archlinux.ca/projects/cronwhip/archives/cronwhip-2012.5.tar.xz.sig
)
sha512sums=(
  7b8408108b342214247892719893870ef9f8d79eb5dbcd5ee6951f726fdc0a0e4100325311bbe277b31fedba057390c8c1cdbad85d408d2fd94cb682e2e3d217
  572c1482be855b9fadec5ff1f863a50f1a60dada0bc6d0c306800ccbb337f6df62422c0649ea560efb2f424e0fa178cd595462ab9ed76a59f64e8f9316d7893f
)
md5sums=(
  6d46d2428915c37ae27f769cf277ac39
  cadd9f9329665b5a4f67ba2e954c7b3d
)
install=cronwhip.install

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -Dm755 cronwhip "${pkgdir}/usr/bin/cronwhip"
  install -Dm755 cronwhipd "${pkgdir}/etc/rc.d/cronwhipd"
}

