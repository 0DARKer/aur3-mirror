# Maintainer: naelstrof <naelstrof@gmail.com>
pkgname=slop
pkgver=v2.1.4.r0.g9bd51fe
pkgrel=1
pkgdesc="slop (Select Operation) is an application that queries for a selection from the user and prints the region to stdout."
arch=( 'i686' 'x86_64' )
url="https://github.com/naelstrof/$pkgname"
license=( 'GPL3' )
depends=( 'libxext' 'libx11' )
makedepends=( 'make' )
source=( "slop::git+https://github.com/naelstrof/slop.git" )
md5sums=('SKIP')

pkgver() {
    cd "$pkgname"
    git describe --long --tags | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
    cd "$srcdir/$pkgname"

    make
}

package() {
    cd "$srcdir/$pkgname"

    make DESTDIR="$pkgdir/" install
}
