# Maintainer: naelstrof <naelstrof@gmail.com>
pkgname=slop
pkgver="v3.1.4"
pkgrel=1
conflicts=( 'slop' )
pkgdesc="slop (Select Operation) is an application that queries for a selection from the user and prints the region to stdout."
arch=( 'i686' 'x86_64' )
url="https://github.com/naelstrof/$pkgname"
license=( 'GPL3' )
depends=( 'libxext' 'libx11' )
makedepends=( 'make' )
source=( "http://farmpolice.com/content/files/slop-${pkgver}.tar.gz" )
md5sums=('32f4e91d6f6ffd695664222d646e80f0')

build() {
    cd "$srcdir/$pkgname"

    make
}

package() {
    cd "$srcdir/$pkgname"

    make DESTDIR="$pkgdir/" install
}
