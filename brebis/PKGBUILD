# Maintainer: Francois Boulogne <fboulogne@april.org>
# Contributor: Francois Boulogne <fboulogne@april.org>

pkgname=brebis
pkgver=0.5
pkgrel=1
pkgdesc='A fully automated backup checker'
arch=('any')
url='http://brebisproject.org'
license=('GPL3')
install='brebis.install'
depends=('python')
makedepends=('python-distribute')
optdepends=()
source=("http://brebisproject.org/attachments/download/6/${pkgname}-${pkgver}.tar.gz")
md5sums=('7cd4e32c1fe3c821a27a052671ca1c8d')


build(){
  cd "brebis-${pkgver}"

  python setup.py build
}

package() {
  cd "brebis-${pkgver}"

  python setup.py install --prefix=/usr --root="${pkgdir}" 
  install -d "${pkgdir}"/etc/brebis
  install -Dm644 LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE
}
# vim:ts=2:sw=2:et:
