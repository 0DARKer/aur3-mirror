# Maintainer: David J. Haines <djhaines at gmx dot com>
# Contributor: Benjamin Hodgetts (Enverex) <ben@xnode.org>

pkgname=pioneer-git
pkgver=20140201
pkgrel=1
pkgdesc="A freeform single player space adventure in the spirit of Frontier: Elite II."
arch=('i686' 'x86_64')
url="http://pioneerspacesim.net/"
license=('GPL')
provides=('pioneer')
conflicts=('pioneer')
install='pioneer.install'
source=("$pkgname"::'git://github.com/pioneerspacesim/pioneer.git#tag='"${pkgver}" 'pioneer.png' 'pioneer.desktop' 'pioneer.install')
depends=('libsigc++' 'libvorbis' 'sdl2_image' 'assimp' 'glew' 'freetype2')
makedepends=('git')
md5sums=('SKIP' '46e51941124eb3cf1af9233820223478' '3fa2bec38752b70ffff7393ae00dbc71' '7ac806190718abc1ff06114229624c55')

build() {
	cd "${srcdir}/${pkgname}"
	./bootstrap
	PIONEER_DATA_DIR="/usr/share/pioneer" ./configure --prefix="/usr"
}

package() {
	install -Dm644 "${srcdir}/pioneer.desktop" "${pkgdir}/usr/share/applications/pioneer.desktop"
	install -Dm644 "${srcdir}/pioneer.png" "${pkgdir}/usr/share/pixmaps/pioneer.png"
	install -Dm644 "${srcdir}/${pkgname}/Quickstart.txt" "${pkgdir}/usr/share/doc/pioneer/quickstart.txt"
	cd "${srcdir}/${pkgname}"
	make DESTDIR="${pkgdir}" install
}
