# Maintainer: igor DOT dejanovic AT gmail DOT com
# Contributor: igor DOT dejanovic AT gmail DOT com 

pkgname=gource
pkgver=0.29
pkgrel=1
pkgdesc="Software version control visualization tool"
arch=('i686' 'x86_64')
url="http://code.google.com/p/gource/"
license=('GPL')
groups=()
depends=('sdl_image' 'pcre' 'ftgl' 'libpng' 'libjpeg' 'glew' 'ttf-freefont')
makedepends=('sdl_image' 'pcre' 'ftgl' 'libpng' 'libjpeg' 'glew')
source=(http://gource.googlecode.com/files/gource-0.29.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-ttf-font-dir=/usr/share/fonts/TTF/
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

md5sums=('063daef80d5235953c7eec894de9ccd9')
