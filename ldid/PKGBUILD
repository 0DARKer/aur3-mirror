# Maintainer: yetist <yetist@gmail.com>
pkgname=ldid
pkgver=1.0.610
pkgrel=1
pkgdesc="ldid is codesign tool for ios toolchain under linux"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ios-toolchain-based-on-clang-for-linux"
license=('GPL')
source=("http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/$pkgname-$pkgver-modified.tar.gz")
sha256sums=('4eb6244acc0e678de0d7f6aa7876e07f5aead32ddf4888c3271866855b0f24d7')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 util/ldid $pkgdir/usr/bin/ldid
}

