# Maintainer: yetist <yetist@gmail.com>
pkgname=ldid
pkgver=1.0.611
pkgrel=2
pkgdesc="ldid is codesign tool for ios toolchain under linux"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ios-toolchain-based-on-clang-for-linux"
license=('GPL')
source=("http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/$pkgname-$pkgver.tar.bz2")
sha256sums=('2bfecdac4fdfd6825f5f7ee500645d8921a62eb4ae5b2e744efa486dcefc98c6')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
