# Maintainer: Yeison Cardona <yeison.eng@gmail.com>

githubaccount="PinguinoIDE"
pkgshortname="pinguino"
pkgname="pinguino-libraries"
pkgver="11.0"
pkgrel="0"

installdir="/usr/share/$pkgshortname-$pkgver"

pkgdesc="Pinguino's libraries and examples for (Tm)Microchip 8- and 32-bit PIC-based applications"
arch=("any")
url="http://www.pinguino.cc/"
license=("GPL")

makedepends=("git")

gitroot="git://github.com/${githubaccount}/${pkgname}"
md5sums=('SKIP')

package() {

  # clone from git with name $pkgname
  cd ${srcdir}
  if [ -d ${pkgname} ] ; then
    cd ${pkgname}
    git checkout *
    git pull origin
  else
    git clone ${gitroot} ${pkgname} --depth=1
  fi

  cd ${startdir}
  install -m755 -d ${pkgdir}/${installdir}

  #copying pinguino-libraries
  cp -Rvf ${srcdir}/${pkgname}/* ${pkgdir}/${installdir}

  #remove files
  rm ${pkgdir}/${installdir}/{README.md,LICENSE}

}
