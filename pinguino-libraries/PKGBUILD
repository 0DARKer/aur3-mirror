# Maintainer: Yeison Cardona <yeison.eng@gmail.com>

githubaccount="PinguinoIDE"
pkgshortname="pinguino"
pkgname="pinguino-libraries"

pkgver="11.0"
pkgrel="0"
pkgdesc="Pinguino's libraries and examples for (Tm)Microchip 8- and 32-bit PIC-based applications"
arch=("any")
url="http://www.pinguino.cc/"
license=("GPL")

source=("$pkgname::https://github.com/$githubaccount/$pkgname/archive/master.zip") 
md5sums=('70f481fa4c4a3e59a382b5e8e88d198d')

package() {

  cd ${startdir}
  install -m755 -d ${pkgdir}/usr/share/${pkgshortname}-${pkgver}

  #moving pinguino-libraries
  mv -vf ${srcdir}/${pkgname}-master/* ${pkgdir}/usr/share/${pkgshortname}-${pkgver}

  #remove files
  rm ${pkgdir}/usr/share/${pkgshortname}-${pkgver}/{README.md,LICENSE}

}
