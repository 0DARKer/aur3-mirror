# Mantainer: Diego <cdprincipe@at@gmail@dot@com>

pkgname=zoncolor-themes-pack
pkgver=1.6.5
pkgrel=1
pkgdesc="Complete Themes Pack for Linux desktop with Unlimited Color Variants"
arch=('any')
url="http://zoncolor.googlecode.com"
license=('GPL3 & CC 3 BY-SA')
depends=('gtk-engine-murrine')
source=(https://zoncolor.googlecode.com/files/zoncolor-themes-src_${pkgver}.tar.gz)
md5sums=('d93ed3589cbf6250dffd93bb626fa945')

package() {
  # Install GTK Themes
  cd $srcdir/zoncolor-themes-src/zoncolor/zcsetup/zcsrcgtk/
  install -d -m 755 $pkgdir/usr/share/themes/
  cp -r . "$pkgdir"/usr/share/themes/

  # Install icons Themes
  cd $srcdir/zoncolor-themes-src/zoncolor/zcsetup/zcsrcicon/zoncolor/
  install -d -m 755 $pkgdir/usr/share/icons/zoncolor/
  cp -r . "$pkgdir"/usr/share/icons/zoncolor/
  
}

#source=(https://zoncolor.googlecode.com/files/${pkgname}_${pkgver}.tar.gz)
#md5sums=('cf136c8abc88e89410272087e61f237e')
