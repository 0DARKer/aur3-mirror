# Maintainer: StarGater93 <stargater93@gmail.com>
pkgname=ttf-celestia
_realname=CelestiaMedium
pkgver=1.51
pkgrel=2
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="A font based off of the one used in My Little Pony : Friendship is Magic (MLP:FIM), created by Purple Tinker (abandoned by creator)"
arch=('any')
url="http://www.purpletinker.com/fonts/"
license=('custom')
source=(http://fimfics.co.cc/funstuff/${_realname}-v${pkgver}.ttf)
md5sums=('3d4e17c0267a875483e2f5c0644305fc')
install=$pkgname.install

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/*.ttf $pkgdir/usr/share/fonts/TTF
}

