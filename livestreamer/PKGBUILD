# Maintainer: Christopher Rosell <chrippa@tanuki.se>
pkgname=livestreamer
pkgver=1.0.0
pkgrel=1
pkgdesc='CLI program that helps launch various streaming services in a real player instead of flash.'
arch=('i686' 'x86_64')
url="https://github.com/chrippa/livestreamer"
license=('BSD')
groups=()
depends=('python' 'rtmpdump-git')
makedepends=('python-distribute')
provides=('livestreamer')
conflicts=('livestreamer-git')
replaces=()
backup=()
options=(!emptydirs)
install=
source=(https://github.com/chrippa/livestreamer/tarball/v1.0.0)
md5sums=('5d1a84138eff4b8f0138d82e067a55fa')

package() {
  cd "$srcdir/chrippa-livestreamer-ebc4350"
  python setup.py install --root="$pkgdir/" --optimize=1
}

