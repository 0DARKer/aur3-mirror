# Maintainer: PitBall

_pkgname=libnotify
pkgname=${_pkgname}-gtk2
pkgver=0.5.2
pkgrel=1
pkgdesc="Desktop notification library (old, GTK2 version)"
arch=('i686' 'x86_64')
url="http://library.gnome.org/devel/notification-spec/"
license=('LGPL')
depends=('gdk-pixbuf2' 'gtk2')
conflicts=('libnotify' 'libnotify-git' 'libnotify-id' 'libnotify-id-git')
provides=("libnotify=$pkgver")
replaces=('libnotify')
source=("http://ftp.gnome.org/pub/GNOME/sources/${_pkgname}/0.5/${_pkgname}-${pkgver}.tar.bz2")
sha256sums=('1f6f1a2d6a0e009997c7ed31f6197f9bf09e9b45fb9cd54acabceea951d99062')

build() {
	cd ${_pkgname}-${pkgver}
	./configure --prefix=/usr --disable-static
	make
}

package() {
	cd ${_pkgname}-${pkgver}
	make DESTDIR="${pkgdir}" install
	ln -s libnotify.so.1 ${pkgdir}/usr/lib/libnotify.so.4
}
