pkgname=bse-alsa
pkgver=0.7.2
pkgrel=2
pkgdesc="The Bedevilled Sound Engine, BEAST's core library (ALSA version)"
arch=('i686' 'x86_64')
url="http://beast.testbit.eu/"
license=('GPL')
depends=('beast' 'alsa-lib')
makedepends=('pkgconfig')
options=('!libtool')
source=("${url}_dist/beast/v0.7/$pkgname-$pkgver.tar.bz2")
md5sums=('ff071bb46b45594b5f4abadf67172aa5')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
