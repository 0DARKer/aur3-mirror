pkgname=uget
pkgver=1.7.2a
pkgrel=1
pkgdesc="A download manager featuring download classification and HTML import"
arch=('i686' 'x86_64')
url="http://urlget.sourceforge.net/"
license=('LGPL')
depends=('curl>=7.17' 'gtk2>=2.18' 'hicolor-icon-theme')
makedepends=('intltool' 'pkgconfig>=0.9.0')
install=uget.install
source=(http://downloads.sourceforge.net/project/urlget/uget%20%28developing%29/${pkgver%a}/uget-$pkgver.tar.gz)
md5sums=('effa42288c86bc923c3e810f4589cd1e')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --disable-notify --disable-gstreamer
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
