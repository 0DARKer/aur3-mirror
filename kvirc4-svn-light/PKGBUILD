pkgname=kvirc4-svn-light
pkgver=6321
pkgrel=1
pkgdesc='Qt4-based IRC client (SVN version with light compilation)'
arch=('i686' 'x86_64')
url='http://www.kvirc.net'
license=('GPL')
depends=('qt4' 'openssl' 'zlib')
akedepends=('cmake' 'subversion' 'automoc4' 'gettext')
conflicts=('kvirc' 'kvirc4-svn' 'kvirc4-svn-nokde')
provides=('kvirc' 'kvirc4' "kvirc4-svn=${pkgver}")
source=()
md5sums=()

_svntrunk=https://svn.kvirc.de/svn/trunk/kvirc
_svnmod=kvirc

build() {

 # start building
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cd $_svnmod

  cmake -DWANT_QTDBUS=OFF \
        -DWANT_KDE4=OFF \
        -DWANT_PHONON=OFF \
        -DWANT_QTWEBKIT=OFF \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DWANT_COEXISTENCE=OFF \
        -DWANT_AUDIOFILE=OFF \
        -DWANT_TRANSPARENCY=OFF \
        -DWANT_PERL=OFF \
        -DWANT_PYTHON=OFF \
        -DWANT_IPC=OFF \
        -DWANT_GSM=OFF \
        -DWANT_DCC_VOICE=OFF \
        -DWANT_DOXYGEN=OFF \
        -DWANT_CRYPT=OFF
  make
  make DESTDIR=$pkgdir install

  #rm $pkgdir/usr/lib/kvirc/4.0/modules/libkvimediaplayer.so

}
