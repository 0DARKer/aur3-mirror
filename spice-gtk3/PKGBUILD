# Contributor: Lucio Zara <pennega@gmail.com>

pkgname=spice-gtk3
_pkgname=spice-gtk
pkgver=0.6
pkgrel=1
pkgdesc="SPICE client for display into other applications such as virt-manager."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig intltool perl-text-csv)
depends=(libpulse cairo-xcb gtk3 spice)
source=("http://spice-space.org/download/gtk/$_pkgname-$pkgver.tar.bz2")
md5sums=('fe4b31a4e7b20ec53ff58d53957ab0b1')


build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr --with-gtk=3.0
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  MAKEFLAGS= make DESTDIR="$pkgdir/" install
}
