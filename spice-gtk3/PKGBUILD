pkgname=spice-gtk3
_pkgname=spice-gtk
pkgver=0.7.150
pkgrel=1
pkgdesc="A Gtk client and libraries for SPICE remote desktop servers (gtk3 version)."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=('intltool')
depends=('libpulse' 'gtk3' 'spice' 'libusb-testing' 'usbredir')
conflicts=('spice-gtk')
options=('!libtool')
source=("http://www.spice-space.org/download/gtk/$_pkgname-$pkgver.tar.bz2")
sha256sums=('4dbec24d9dc12f800dbb045d1d38ebdb57a19a4b5de7464511957d15afe58138')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr --with-gtk=3.0 --enable-smartcard=no
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
