pkgname=spice-gtk3
_pkgname=spice-gtk
pkgver=0.7.81
_realver=0.7.81-4f76
pkgrel=1
pkgdesc="A Gtk client and libraries for SPICE remote desktop servers (gtk3 version)."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=('intltool' 'vala')
depends=('libpulse' 'gtk3' 'spice' 'libusb-testing' 'usbredir')
conflicts=('spice-gtk')
options=('!libtool')
source=("http://spice-space.org/download/gtk/$_pkgname-$_realver.tar.bz2")
sha256sums=('5c667c501eb76bb1fd914ee9d1b4f9f7266761d23ec453a55d35a6d7dfa2f4d4')

build() {
  cd "$srcdir/$_pkgname-$_realver"

  ./configure --prefix=/usr \
              --with-gtk=3.0 \
              --enable-smartcard=no \
              --enable-vala
  make
}

package() {
  cd "$srcdir/$_pkgname-$_realver"

  make DESTDIR="$pkgdir/" install
}
