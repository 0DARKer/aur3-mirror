pkgname=spice-gtk3
_pkgname=spice-gtk
pkgver=0.7.150
_realver=0.7.150-e507
pkgrel=1
pkgdesc="A Gtk client and libraries for SPICE remote desktop servers (gtk3 version)."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=('intltool')
depends=('libpulse' 'gtk3' 'spice' 'libusb-testing' 'usbredir')
conflicts=('spice-gtk')
options=('!libtool')
source=("http://elmarco.fedorapeople.org/$_pkgname-$_realver.tar.bz2")
sha256sums=('6f719d3e3693d4fdf8f4ed75f14fd0bfbe3921fda6aa7d68e229ec5ed0d3f5cb')

build() {
  cd "$srcdir/$_pkgname-$_realver"

  ./configure --prefix=/usr --with-gtk=3.0 --enable-smartcard=no
  make
}

package() {
  cd "$srcdir/$_pkgname-$_realver"

  make DESTDIR="$pkgdir/" install
}
