pkgname=spice-gtk3
_pkgname=spice-gtk
pkgver=0.11
pkgrel=2
pkgdesc="A Gtk client and libraries for SPICE remote desktop servers (gtk3 version)."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=('intltool' 'vala')
depends=('libpulse' 'gtk3' 'spice' 'libusb' 'usbredir')
conflicts=('spice-gtk')
options=('!libtool')
source=("http://www.spice-space.org/download/gtk/$_pkgname-$pkgver.tar.bz2")
sha256sums=('7639876b49efc8bbe5e0668fdbadcd768acc9bbd5235b4856ae632235e784eba')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr \
              --with-gtk=3.0 \
              --enable-vala \
              --enable-smartcard=no
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
