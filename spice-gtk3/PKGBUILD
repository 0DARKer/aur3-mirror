pkgname=spice-gtk3
_pkgname=spice-gtk
pkgver=0.7.159
pkgrel=1
pkgdesc="A Gtk client and libraries for SPICE remote desktop servers (gtk3 version)."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=('intltool' 'vala')
depends=('libpulse' 'gtk3' 'spice' 'libusb-testing' 'usbredir')
conflicts=('spice-gtk')
options=('!libtool')
source=("http://www.spice-space.org/download/gtk/$_pkgname-$pkgver.tar.bz2")
sha256sums=('c154c28778cbf2afef4c3c7f023afe4d0de7d742a2aace38a7358eb56a2c3306')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr \
              --with-gtk=3.0 \
              --enable-vala \
              --enable-smartcard=no
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
