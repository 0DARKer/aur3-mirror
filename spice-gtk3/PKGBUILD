pkgname=spice-gtk3
_pkgname=spice-gtk
pkgver=0.7
pkgrel=2
pkgdesc="SPICE client for display into other applications such as virt-manager."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig intltool perl-text-csv)
depends=(libpulse gtk3 spice)
source=("http://spice-space.org/download/gtk/$_pkgname-$pkgver.tar.bz2")
md5sums=('a47ca51ef4bb27cab35ddbfb9e6c0fff')


build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr --with-gtk=3.0 --enable-smartcard=no
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
