pkgname=gaphas
pkgver=0.7.0
pkgrel=1
pkgdesc="A GTK+ based diagramming widget written in Python"
arch=('i686' 'x86_64')
url="http://gaphor.sourceforge.net"
license=('LGPL')
depends=('pygtk>=2.8.0' 'python-decorator>=3.0.0' 'python-simplegeneric>=0.6')
makedepends=('python2-distribute' 'python-nose>=0.10.4')
source=(http://pypi.python.org/packages/source/g/gaphas/$pkgname-$pkgver.tar.gz)
md5sums=('05f7f4279c26a561ce845b49f38b719b')

build() {
  cd "${srcdir}/$pkgname-$pkgver"
  python2 setup.py install --root="${pkgdir}" --prefix=/usr || return 1
}
