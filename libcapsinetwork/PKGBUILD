# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=libcapsinetwork
pkgver=0.3.0
pkgrel=2
pkgdesc="A network library for C++ server daemons aimed at easy development of server daemons."
arch=('i686' 'x86_64')
url="http://www.robertjohnkaper.com/software/atlantik/download.html"
license=('GPL')
depends=('gcc-libs')
options=('!libtool' '!makeflags')
source=(gcc4.3.patch \
  http://www.robertjohnkaper.com/downloads/atlantik/libcapsinetwork-$pkgver.tar.gz)
md5sums=('a82db90a413565bc87c64db3580c8c86' '9e6e221fdd1ec53c518b2ca61830e8cf')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 < ../gcc4.3.patch || return 1
  ./configure --prefix=/usr --build=i686-linux-gnu || return 1 
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
