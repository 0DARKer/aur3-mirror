# Contributer: Pavol Klačanský <pavol@klacansky.com>

pkgname=aspell6-sk
pkgver=2.01_2
pkgrel=1
pkgdesc='Slovak dictionary for Aspell.'
arch=('i686' 'x86_64')
url='http://www.sk-spell.sk.cx/'
license='GPL'
depends=('aspell')
source=(http://ftp.gnu.org/gnu/aspell/dict/sk/${pkgname}-${pkgver//_/-}.tar.bz2)
md5sums='b31bdc33a681902e5bc493a0692022a9'

build()
{
	cd $srcdir/$pkgname-${pkgver//_/-}
	./configure
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
}

