pkgname=guayadeque 
pkgver=0.2.7
pkgrel=1
pkgdesc="Light linux music player application, alternative to rhythmbox"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/guayadeque/"
license=('GPL')
depends=('taglib>=1.5-1' 'curl>=7.19.5-2' 'glib2>=2.12.0'  'gstreamer0.10' 'gstreamer0.10-base-plugins' 'gstreamer0.10-good-plugins' 'libxml2' 'sqlite3>=3.6.10' 'wxgtk>=2.8.9.1' 'flac>=1.2.1-1' 'dbus-core>=1.2.16-1')
makedepends=('autoconf' 'automake' 'gcc' 'make' 'cmake' 'pkgconfig')
provides=('guayadeque')
conflicts=('guayadeque-svn')
groups=('guayadeque')
source=(http://dfn.dl.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('20d85a8763ea6552e3532740ba7e87b0')

build() {
  cd ${srcdir}

    msg "Starting make..."

    cd ${srcdir}/${pkgname}-${pkgver}

  ./build || return 1

  make DESTDIR=${pkgdir} install || return 1
}