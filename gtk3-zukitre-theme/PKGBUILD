# Maintainer: Joel Almeida <aullidolunar at gmail dot c0m>

pkgname=gtk3-zukitre-theme
pkgver=0.9
pkgrel=1
pkgdesc="A theme based on the work of Zuki team (xfwm4, unity, metacity, gtk2, gtk3 and gnome-shell support)"
arch=('any')
url="http://gnome-look.org/content/show.php/Zukitre+For+Ubuntu?content=165573"
license=('GPL')
depends=('gtk-engines' 'gtk-engine-unico' 'gtk-engine-murrine')
source=('http://gnome-look.org/CONTENT/content-files/165573-Zukitre.tar.bz2')
md5sums=('cb23cf6c0a1a1a643883ddb667c992b1')

package() {
	cd "$srcdir/Zukitre"
	install -d -m 755 "$pkgdir/usr/share/themes/Zukitre"
	find . -type f -exec install -D -m 644 '{}' "$pkgdir/usr/share/themes/Zukitre/{}" \;
}

build() {
	cd "$srcdir"
}
