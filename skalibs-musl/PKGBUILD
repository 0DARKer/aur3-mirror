# Maintainer: Lukas Braun <koomi+aur at hackerspace-bamberg dot de>
# Contributor: David Arroyo <droyo@aqwari.us>
pkgname=skalibs-musl
pkgver=2.0.0.0
pkgrel=1
pkgdesc="A set of general-purpose C programming libraries"
arch=('i686' 'x86_64')
url="http://www.skarnet.org/software/skalibs"
license=('custom:ISC')
makedepends=(musl)
provides=(skalibs=2.0.0.0)
options=('staticlibs')
changelog=CHANGELOG
source=(${url}/skalibs-$pkgver.tar.gz)
sha256sums=('76248323fc0785555d4991bd1e92d264d0a1a51e9a68a6a8e4d33af43007e333')

build() {
  cd "$srcdir/skalibs-$pkgver"

  CC="musl-gcc" CFLAGS="-static" ./configure --disable-shared
  make
}

package() {
  cd "$srcdir/skalibs-$pkgver"

  make DESTDIR="$pkgdir/" install
}
