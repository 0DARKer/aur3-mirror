# Maintainer: James Bulmer <nekinie@gmail.com>

pkgname="python2-oslo-messaging"
pkgver=1.3.0
pkgrel=1
pkgdesc="Messaging API"
arch=("i686" "x86_64")
url="https://pypi.python.org/pypi/oslo.messaging/"
license=("Apache")

depends=(
  "python2"
  "python2-six"
  "python2-iso8601"
  "python2-oslo-config"
  "python2-babel"
  "python2-stevedore"
  "python2-eventlet"
  "python2-yaml"
)

makedepends=("python2-setuptools")
source=("https://pypi.python.org/packages/source/o/oslo.messaging/oslo.messaging-${pkgver}.tar.gz")
md5sums=("ca7e4fe7993da5eb6b642abae1d50e3a")

build() {
  cd "${srcdir}/oslo.messaging-${pkgver}/"
  python2 setup.py build
}

package() {
  cd "${srcdir}/oslo.messaging-${pkgver}/"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}