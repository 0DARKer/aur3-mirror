# Maintainer: Vishesh Handa <me@vhanda.in>
pkgname=koko-git
pkgver=20141218
pkgrel=1
pkgdesc="A KDE Image Gallery"
arch=('i686' 'x86_64')
url="https://projects.kde.org/projects/playground/graphics/koko"
license=('LGPL')
depends=('libtcejdb' 'baloo-git' 'kfilemetadata-git')
makedepends=('git' 'cmake' 'automoc4')
provides=('koko')
conflicts=('koko')
install=koko.install

_gitroot="git://anongit.kde.org/koko"
_gitname="koko"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release || return 1
  make || return 1
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install || return 1
}