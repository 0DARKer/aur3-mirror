# Maintainer: Leif Warner <abimelech@gmail.com>
pkgname=idris-git
pkgver=20130223
pkgrel=1
pkgdesc="Functional programming language with dependent types."
url="https://github.com/edwinb/Idris-dev"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-binary' 'haskell-bytestring' 'haskell-containers' 'haskell-directory' 'haskell-filepath' 'haskell-haskeline' 'haskell-mtl' 'haskell-parsec' 'haskell-pretty' 'haskell-process' 'haskell-transformers' 'haskell-split' 'haskell-libffi' 'haskell-language-java' 'haskell-llvm-general')
depends=('gmp' 'libffi')
optdepends=(
  'gc: linked to when using llvm codegen'
  'maven: downloads runtime when using Java codegen'
)
options=('strip')
conflicts=('idris')
_gitroot=https://github.com/edwinb/Idris-dev.git
_gitname=Idris-dev
build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O
  runhaskell Setup build
  pushd llvm
  make
}
package() {
    cd "$srcdir/$_gitname-build"
    runhaskell Setup copy --destdir=${pkgdir}
    install -D llvm/libidris_rts.a ${pkgdir}/usr/share/idris-0.9.8.1/llvm//libidris_rts.a
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
    rm ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
    rmdir ${pkgdir}/usr/share/doc/${pkgname}
}
