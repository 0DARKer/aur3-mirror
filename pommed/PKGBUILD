# Contributor: dpevp <daniel.plaza.espi@gmail.com>
# Contributor: gimli <gimli@dark-green.com>
# Maintainer: jordi Cerdan (jcerdan) <jcerdan@tecob.com>
pkgname=pommed
pkgver=1.35
pkgrel=2
pkgdesc="Handles the hotkeys of Apple MacBook (Pro) laptops"
arch=('i686' 'x86_64')
url="http://technologeek.org/projects/pommed/"
license=('GPL2')
install=$pkgname.install
makedepends=('pkgconfig')
depends=('dbus-core' 'alsa-lib' 'confuse' 'audiofile')
backup=('etc/pommed.conf')
source=(https://alioth.debian.org/frs/download.php/3464/$pkgname-$pkgver.tar.gz pommed)
md5sums=('841901daf94556ccf9a3c7d122e04a79' '1bf10f5925d50c984cfbbb2611ed7ae5')
build() {
    cd $srcdir/$pkgname-$pkgver
    make pommed || return 1
    install -D -m755 ./pommed/pommed $pkgdir/usr/sbin/pommed
    install -D -m644 ./dbus-policy.conf $pkgdir/etc/dbus-1/system.d/pommed.conf
    install    -m644 ./pommed.conf* $pkgdir/etc/
    # Original daemon script replaced by Archlinux standard script
    # install -D -m755 ./pommed.init $pkgdir/etc/rc.d/pommed
    install -D -m755 ../../pommed $pkgdir/etc/rc.d/pommed

    # install man page
    install -D -m644 ./pommed.1 $pkgdir/usr/share/man/man1/pommed.1
    install -D -m644 ./pommed/data/goutte.wav $pkgdir/usr/share/pommed/goutte.wav
    install -D -m644 ./pommed/data/click.wav $pkgdir/usr/share/pommed/click.wav
}
