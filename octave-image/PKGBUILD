pkgname=octave-image
pkgver=1.0.13
pkgrel=1
pkgdesc="The Octave-forge Image package provides functions for processing images."
arch=('i686' 'x86_64')
url="http://octave.sourceforge.net/image/index.html"
license=('GPL')
depends=('octave' 'libjpeg' 'libpng')
makedepends=('gcc-fortran')
optdepends=()
backup=()
options=()
install=
source=("http://downloads.sourceforge.net/octave/image-$pkgver.tar.gz")
noextract=("image-$pkgver.tar.gz")
md5sums=('b2948a6d90cbd55f7b0a12fdf5da3b23')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  echo "pkg prefix $pkgdir/usr/share/octave/packages $pkgdir/usr/lib/octave/packages; pkg install -local image-$pkgver.tar.gz" | octave --silent
}

