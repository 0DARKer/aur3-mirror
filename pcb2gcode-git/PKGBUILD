# Maintainer: Thomas Krug <phragment@htu.tugraz.at>
# Contributor: Pierre DOUCET <pierre at equinoxefr.org>

pkgname=pcb2gcode-git
_pkgname=pcb2gcode
pkgver=20131209
pkgrel=3
pkgdesc="Gerber to gcode file converter" 
arch=('i686' 'x86_64')
url="http://sourceforge.net/apps/mediawiki/pcb2gcode/index.php?title=Main_Page"
license=('GPL')
makedepends=('git' 'boost')
depends=('gtkmm' 'boost-libs' 'gerbv=2.6.0')
provides=('pcb2gcode')
conflicts=('pcb2gcode')
md5sums=('SKIP')
source=("$_pkgname"::'git://pcb2gcode.git.sourceforge.net/gitroot/pcb2gcode/pcb2gcode')

pkgver() {
  date +%Y%m%d
}

build() {
  cd "$srcdir/$_pkgname"

  libtoolize
  aclocal
  automake --add-missing
  autoreconf
  ./configure --prefix=/usr
  make -j
}

package() {
  cd "$srcdir/$_pkgname"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
