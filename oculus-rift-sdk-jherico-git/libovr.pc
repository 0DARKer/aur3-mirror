prefix=/usr
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: LibOVR
Description: LibOVR for oculus rift support.
Requires: xrandr libudev
Version: @PACKAGE_VERSION@
Libs: -L${libdir} -lOculusVR
Cflags: -I${includedir}/ovr-@PACKAGE_VERSION@/ -I${includedir}/ovr-@PACKAGE_VERSION@/ovr -I${includedir}/ovr-@PACKAGE_VERSION@/Include -I${includedir}/ovr-@PACKAGE_VERSION@/Src
