# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=arkanoidsb
pkgver=1.3.2.10
pkgrel=1
pkgdesc="New generation of arkanoid style game."
[ "$CARCH" = "i686"   ] && ARCH=x86
[ "$CARCH" = "x86_64" ] && ARCH=x86_64
arch=('i686' 'x86_64')
url="http://www.wegroup.org/games/arkanoid-games/arkanoid-space-ball.html" 
license="free to try, which means you buy the game only if you like it"
[ "$CARCH" = "i686"   ] && depends=('sdl_mixer' 'sdl_image' 'libogg')
[ "$CARCH" = "x86_64" ] && depends=('lib32-sdl_mixer' 'lib32-sdl_image' 'lib32-libogg')

source=(http://www.wegroup.org/downloads/${pkgname}-${pkgver}.tar.bz2  arkanoidsb.desktop)
md5sums=('ee8180cabe4d71c678c3c32a931693d4' 'a849f2969519fa83eeb0cdb6292803d5')

build() { 
	cd ${srcdir}/${pkgname}
        mkdir -p ${pkgdir}/usr/bin
        mkdir -p ${pkgdir}/usr/share/{arkanoidsb,applications}
        cp -R * ${pkgdir}/usr/share/arkanoidsb 
        chmod +rx ${pkgdir}/usr/share/arkanoidsb/{*,res/*}
	echo "#!/bin/bash" >> arkanoidsb.sh
	echo "cd /usr/share/arkanoidsb" >> arkanoidsb.sh
	echo "./arkanoidsb" >> arkanoidsb.sh
        install -m 755 arkanoidsb.sh ${pkgdir}/usr/bin
        install ${srcdir}/arkanoidsb.desktop ${pkgdir}/usr/share/applications
}
