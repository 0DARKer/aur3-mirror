pkgname=owncloud-app-files-mv
pkgver=0.6.1
pkgrel=1
pkgdesc="Roundcubemail integration for owncloud"
arch=('any')
url="http://apps.owncloud.com/content/show.php/Files+move?content=150271"
license=('GPL')
depends=('owncloud')
makedepends=()
options=('!strip')
source=("$pkgname-$pkgver.tar.gz::https://github.com/eotryx/oc_files_mv/archive/v${pkgver}.tar.gz")
sha512sums=("e66e6021653b1893d011b29196db1fb0fd9ef278d666921b5751fcf1f2f1776a4dcfc4fbb21bb87df2c05f05312974f390373dc17ca27234bc7d3607af306e1c")

package() {
  install -d "${pkgdir}/usr/share/webapps/owncloud/apps"
  cp -a "${srcdir}/oc_files_mv-${pkgver}" "${pkgdir}/usr/share/webapps/owncloud/apps/files_mv"
}
