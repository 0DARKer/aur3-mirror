# Maintainer: Army <uli armbruster google>
# based on firefox-noscript by Sergej Pupykin <pupykin.s+arch@gmail.com>
# and some parts inspired by pentadactyl-hg by Patrice Peterson <runiq at archlinux dot us>

pkgname=aurora-noscript
pkgver=2.1.1.2
pkgrel=1
pkgdesc="provides extra protection for Firefox, Seamonkey and other mozilla-based browsers allowing JavaScript, Java and Flash and other plugins to be executed only by trusted web sites of your choice"
arch=('any')
url="http://noscript.net/"
license=('GPL2')
depends=("aurora")
makedepends=('unzip' 'perl')
source=(https://secure.informaction.com/download/releases/noscript-$pkgver.xpi)

build() {
	cd $srcdir
	local aurora_ver=$(perl -e '`aurora -v` =~ /(\d+\.\d+[^\s.,;:]*)/; print $1')
	local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf)
	local dstdir=$pkgdir/usr/lib/aurora-${aurora_ver}/extensions/${emid}
	install -d $dstdir
	cp -R * $dstdir
	rm $dstdir/noscript-$pkgver.xpi
}
md5sums=('c32ca8c6c859d906c8597b9f6d776915')
