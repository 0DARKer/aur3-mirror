# Maintainer: Alain Kalker <a {dot} c {dot} kalker "at" gmail {dot} com>
pkgname=xweston
pkgver=0.2
pkgrel=1
pkgdesc="Run X window managers in Wayland/Weston"
arch=('any')
url="http://wayland.freedesktop.org/"
license=('GPL')
depends=('weston' 'xorg-server-xwayland')
install=
source=(Xweston
		Xwayland-wrapper
		README)
md5sums=('224fff3dcf32c5ea2b0d21bd95133cbe'
         '06b14db2ccfda8d95fcd75c5ca1b1621'
         '8e94ec69b2fe029d5647333f8cf915a8')

package() {
	cd "$srcdir"
	install -D -m755 Xweston "$pkgdir/usr/bin/Xweston"
	install -D -m755 Xwayland-wrapper "$pkgdir/usr/bin/Xwayland-wrapper"
	install -D -m644 README "$pkgdir/usr/share/doc/$pkgname/README"
}
