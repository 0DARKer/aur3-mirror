# Maintainer: Alain Kalker <a {dot} c {dot} kalker "at" gmail {dot} com>
pkgname=xweston
pkgver=0.5
pkgrel=1
pkgdesc="Run weston/Xwayland as a bare X session"
arch=('any')
url="http://wayland.freedesktop.org/"
license=('GPL')
depends=('weston' 'xorg-server-xwayland')
install=
source=(Xweston
		dummy-client
		weston.ini
		README)
md5sums=('7aa266df6cbcc8b9dda0eeef4b219590'
         '312ba2ccfbd07bbd5872a8377688fced'
         'dfed2baca037cff05c5229451fe26cd0'
         '9b58626f06ceb0924a18c54f5e57786a')

package() {
	cd "$srcdir"
	install -D -m755 Xweston "$pkgdir/usr/bin/Xweston"
	install -D -m755 dummy-client "$pkgdir/usr/lib/Xweston/dummy-client"
	install -D -m644 weston.ini "$pkgdir/usr/lib/Xweston/weston.ini"
	install -D -m644 README "$pkgdir/usr/share/doc/$pkgname/README"
}
