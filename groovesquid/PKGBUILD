#Maintainer: defendor <defendor@riseup.net>

pkgname=groovesquid
pkgver=0.6.0
pkgrel=1
pkgdesc="A working downloader/player for GrooveShark music streaming service"
arch=('any')
url="http://groovesquid.com/"
license=("GPL")
depends=('java-runtime')
source=("http://groovesquid.com/download.php?file=Groovesquid.jar")
sha512sums=('cba4128c441d28e99644c4b62321301da5e607d84ddf6f3c9cf3aa36bf0b32e77c20db8db517f68ee2105f154a65a033653fd85abe7bf1d1d9ca2a1d5207a272')
noextract=('download.php?file=Groovesquid.jar')
_downloadedname=download.php?file=Groovesquid.jar

package() {
  cd $srcdir
  mv $_downloadedname $pkgname.jar
  mkdir -p "${pkgdir}/opt/${pkgname}"
  mkdir -p "${pkgdir}/usr/share/applications"
  echo -e "[Desktop Entry]\nEncoding=UTF-8\nName=Groovesquid\nGenericName=Grooveshark Downloader and Streamer\nType=Application\nCategories=Audio;Music;Player;AudioVideo\nTerminal=false\nExec=java -jar /opt/groovesquid/groovesquid.jar" > $pkgname.desktop
  cp $pkgname.jar "${pkgdir}/opt/${pkgname}"
  cp $pkgname.desktop "${pkgdir}/usr/share/applications"
}