pkgname=meteorjs
pkgver=0.8.1.3
pkgrel=1
pkgdesc="Open-source platform for building top-quality web apps in a fraction of the time."
arch=('i686' 'x86_64')
url="https://github.com/meteor/meteor"
license=('MIT')
depends=('nodejs' 'mongodb')
options=('!strip')

sha256sums=('c5e7da554287c2e8099df8040ece9a4bbca3c2bca0ea6fe0eb4689477f9e90be')

if [ "$CARCH" = "i686" ]; then
    sha256sums[0]='e27a566523facfcc3ba0c7134ab49f16fdd8aa7452d4b6363c5ad4b97f51610b'
fi

source=("https://d3fm2vapipm3k9.cloudfront.net/bootstrap/$pkgver/meteor-bootstrap-Linux_$CARCH.tar.gz")

package() {
    mkdir -p "$pkgdir/opt"
    mv .meteor "$pkgdir/opt/meteor"
    install -Dm755 "$pkgdir/opt/meteor/tools/latest/launch-meteor" "$pkgdir/usr/bin/meteor"
    install -Dm644 "$pkgdir/opt/meteor/tools/latest/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
}
