pkgname=meteorjs
pkgver=1.0.3.1
pkgrel=1
pkgdesc="Open-source platform for building top-quality web apps in a fraction of the time."
arch=('i686' 'x86_64')
url="https://github.com/meteor/meteor"
license=('MIT')
depends=('nodejs' 'mongodb')
options=('!strip')


if [ "$CARCH" = "i686" ]; then
    _PLATFORM="32"
    sha256sums=('d6260e20aa723109d1ed0be4bbc260cf33322110e1075e230587d29e8c327be2')
else
    _PLATFORM="64"
    sha256sums=('d732cb54215bde3f08002b49364d45f827cf25db291608f8a625d0f7e70ca97e')
fi


source=("https://d3sqy0vbqsdhku.cloudfront.net/packages-bootstrap/$pkgver/meteor-bootstrap-os.linux.x86_${_PLATFORM}.tar.gz")

package() {
    mkdir -p "$pkgdir/opt"
    mv .meteor "$pkgdir/opt/meteor"
    mkdir -p "$pkgdir/usr/bin/"
    ln -s /opt/meteor/meteor "$pkgdir/usr/bin/meteor"
}
