pkgname=meteorjs
pkgver=1.0
pkgrel=1
pkgdesc="Open-source platform for building top-quality web apps in a fraction of the time."
arch=('i686' 'x86_64')
url="https://github.com/meteor/meteor"
license=('MIT')
depends=('nodejs' 'mongodb')
options=('!strip')


if [ "$CARCH" = "i686" ]; then
    _PLATFORM="32"
    sha256sums=('563bf4a2923e0355407b6cafd8f1f234f809e44488aca40c2cb3d3fc83b49e80')
else
    _PLATFORM="64"
    sha256sums=('66b0f068afe6b64f1fdd593199ad4e7fe5f465f686d872098face0fa54d843c6')
fi


source=("https://d3sqy0vbqsdhku.cloudfront.net/packages-bootstrap/$pkgver/meteor-bootstrap-os.linux.x86_${_PLATFORM}.tar.gz")

package() {
    mkdir -p "$pkgdir/opt"
    mv .meteor "$pkgdir/opt/meteor"
    install -Dm755 "$pkgdir/opt/meteor/meteor" "$pkgdir/usr/bin/meteor"
}
