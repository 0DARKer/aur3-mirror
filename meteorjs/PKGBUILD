pkgname=meteorjs
pkgver=0.9.0.1
pkgrel=1
pkgdesc="Open-source platform for building top-quality web apps in a fraction of the time."
arch=('i686' 'x86_64')
url="https://github.com/meteor/meteor"
license=('MIT')
depends=('nodejs' 'mongodb')
options=('!strip')


if [ "$CARCH" = "i686" ]; then
    _PLATFORM="os.linux.x86_32"
    sha256sums=('7704c8920c1fde6c33b67f46c44c5a0749ce26540dde72a0390ca5f3fbe01ed8')
else
    _PLATFORM="os.linux.x86_64"
    sha256sums=('0ef4dbf8dbda7c8c726e0aa70c988cbe1bde286e81973b0d5050070ee4bc3e79')
fi


source=("https://d3sqy0vbqsdhku.cloudfront.net/packages-bootstrap/$pkgver/meteor-bootstrap-${_PLATFORM}.tar.gz")

package() {
    mkdir -p "$pkgdir/opt"
    mv .meteor "$pkgdir/opt/meteor"
    install -Dm755 "$pkgdir/opt/meteor/meteor" "$pkgdir/usr/bin/meteor"
}
