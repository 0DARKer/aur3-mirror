# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=hdsync
pkgver=0.6.0
pkgrel=1
pkgdesc="Achieve synchronous playback of multiple HD videos on multiple screens."
arch=(i686 x86_64)
url="http://syncstarter.org/hdsync/"
license=('AGPL')
depends=('gnu-netcat' 'avremote')
source=("http://ftp.dyne.org/$pkgname/releases/$pkgname-$pkgver.tar.gz")
md5sums=('eb7461bbdbaa90ec815ac906d8b0966c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install

  # remove conflicting files
  rm "$pkgdir"/usr/bin/{avremote,netcat,nc}
}

# vim:set ts=2 sw=2 et:
