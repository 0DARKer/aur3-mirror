# Maintainer: Michael Ivko <ivko.mv@gmail.com>
pkgname=ntk-git
pkgver=20121209
pkgrel=1
pkgdesc="A fork of FLTK 1.3.0 with additional functionality."
arch=('i686' 'x86_64')
url="https://github.com/original-male/ntk"
license=('GPL2')
groups=()
depends=('libx11' 'libxft' 'cairo' 'mesa' 'libpng' 'libjpeg' 'zlib')
makedepends=('git' 'python')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
_gitroot=git://git.tuxfamily.org/gitroot/non/fltk.git
_gitname=ntk

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  ./waf configure --prefix="$pkgdir/usr/"
  ./waf
}

package() {
  cd "$srcdir/$_gitname-build"
  ./waf install --prefix="$pkgdir/usr/"
}

# vim:set ts=2 sw=2 et:
