# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=igstk  
pkgver=4.2
pkgrel=1 
pkgdesc="The Image-Guided Surgery Toolkit"
url="http://www.igstk.org/"
arch=('i686' 'x86_64')
license=('GPL')
makedepends=('insight-toolkit' 'vtk')
source=(http://public.kitware.com/IGSTKWIKI/images/2/25/IGSTK-4-2.tar.gz)
md5sums=('5270b58db1319e6599519b02257b1888')

build() {
  cd $srcdir/IGSTK-4-2
  VTK_DIR=/usr/lib/vtk cmake -DCMAKE_INSTALL_PREFIX:FILEPATH=/usr \. || return 1
  make || return 1
  make DESTDIR=$pkgdir install
}