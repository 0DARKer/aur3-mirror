#Contributor=Firmicus <firmicus@gmx.net>

pkgname=sunclock
pkgver=3.56
pkgrel=2
pkgdesc="A sophisticated astronomical clock for the X Window system"
url="http://frmas.free.fr/li_1.htm#_Sunclock_"
license="GPL"
arch=('i686' 'x86_64')
depends=(xorg-server libjpeg libpng libxpm)
source=(http://frmas.free.fr/files/$pkgname-$pkgver.tar.bz2 \
	http://ankabut.net/varia/$pkgname-$pkgver.patch \
	ftp://ftp.ac-grenoble.fr/ge/geosciences/sunclock/data_packages/medium_images_270804.tar.bz2 \
	ftp://ftp.ac-grenoble.fr/ge/geosciences/sunclock/data_packages/huge.jpg)
md5sums=('9dc92f071e211343e38cc23224dfe162' 'f4c4f4c4f1f75782c1178c54b14f8331'\
         'c81f6e0fc9ca48452bb2390a37b36ed3' '4f0c8fc61e9b545ac337e84df12331b7')
build() {
  cd $startdir/src
  patch -p0 < $pkgname-$pkgver.patch
  cd $pkgname-$pkgver
  make || return 1
  make DESTDIR=$startdir/pkg install
  # install medium images
  mkdir -p $startdir/pkg/usr/share/sunclock/earthmaps/jpeg/
  install -m644 ../images/medium/*.jpg $startdir/pkg/usr/share/sunclock/earthmaps/jpeg/
  #install huge.jpg
  install -m644 ../huge.jpg $startdir/pkg/usr/share/sunclock/earthmaps/jpeg
}
