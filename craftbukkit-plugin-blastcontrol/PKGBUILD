# Maintainer: Sebastian KÃ¶hler <sebkoehler@whoami.org.uk>
pkgname=craftbukkit-plugin-blastcontrol
pkgver=1.0.4
pkgrel=1
pkgdesc="TNT and Creeper restrictions and modification plugin for Bukkit"
arch=(any)
url="https://github.com/happo2000/BlastControl"
license=('GPL')
depends=('craftbukkit')
source=('https://github.com/downloads/happo2000/BlastControl/BlastControl-v1.0.4.jar')
md5sums=('222eef0fc484a16b8ea3f5e2994a792c')

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  install -m 644 -T "$srcdir/BlastControl-v1.0.4.jar" "$pkgdir/opt/craftbukkit/plugins/BlastControl.jar"
}

