#contributor: Francesco 'Kiko' Corsentino <kikocorsentino[at]gmail[dot]com>
pkgname=bvi
pkgver=1.3.2
pkgrel=1
pkgdesc="The bvi is a display-oriented editor for binary files, based on the vi texteditor"
url="http://bvi.sourceforge.net"
arch=('i686')
depends=('ncurses')
license="GPL"
source=('http://kent.dl.sourceforge.net/sourceforge/bvi/'$pkgname-$pkgver'.src.tar.gz')
md5sums=('4257305ffb27177a6d5208b2df4ca92d')

build ()
{
cd $startdir/src/$pkgname-$pkgver
./configure --prefix=/usr
make || return 1
make DESTDIR=$startdir/pkg install
}
