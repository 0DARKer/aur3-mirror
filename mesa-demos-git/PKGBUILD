_pkgname=mesa-demos
pkgname=$_pkgname-git
pkgver=20130104
_realver=8.1
pkgrel=1
pkgdesc="The mesa demos (glxinfo, glxgears, ...), built from the git master branch."
arch=(i686 x86_64)
url=http://mesa3d.org/
license=(custom)
depends=(glew freeglut)
makedepends=(git)
provides=($_pkgname)
conflicts=($_pkgname)
source=(LICENSE)
sha256sums=('7fdc119cf53c8ca65396ea73f6d10af641ba41ea1dd2bd44a824726e01c8b3f2')
sha512sums=('25da77914dded10c1f432ebcbf29941124138824ceecaf1367b3deedafaecabc082d463abcfa3d15abff59f177491472b505bcb5ba0c4a51bb6b93b4721a23c2')

_gitroot=git://anongit.freedesktop.org/mesa/demos
_gitname=demos

build() {
    cd "$srcdir"
    msg "Connecting to the GIT server..."
    if [[ -d $_gitname/.git ]]; then
        pushd $_gitname && git pull
        msg2 "The local files are updated."
        popd
    else
        git clone --depth 1 $_gitroot
    fi
    msg2 "GIT checkout done or server timeout"

    rm -rf $_gitname-build/
    cp -r $_gitname/ $_gitname-build/
    cd $_gitname-build/

    msg "Building..."
  ./autogen.sh --prefix=/usr
  make
}

package() {
    cd "$srcdir"/$_gitname-build/
    make DESTDIR="$pkgdir" install
    install -Dm755 ../LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
