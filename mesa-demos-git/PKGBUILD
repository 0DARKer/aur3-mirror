# Maintainer: Perry3D <perry3d@gmail.com>

pkgname=mesa-demos-git
pkgver=20100616
_realver=7.8
pkgrel=1
pkgdesc="The mesa demos (glxinfo, glxgears, ...), built from the git master branch."
arch=(i686 x86_64)
url="http://mesa3d.org/"
license=('LGPL')
depends=('mesa' 'glew' 'glut')
makedepends=()
provides=("mesa-demos")
conflicts=('mesa-demos')
options=()

_gitroot="git://anongit.freedesktop.org/mesa/demos"
_gitname="demos"

build() {
	msg "Connecting to git.freedesktop.org GIT server...."

	if [ -d $startdir/src/$_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot $_gitname
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	rm -rf $startdir/src/$_gitname-build
	cp -rH $startdir/src/$_gitname $startdir/src/$_gitname-build
	cd $startdir/src/$_gitname-build

	./autogen.sh --prefix=/usr 
	make || return 1
	make DESTDIR="${pkgdir}" install || return 1

	mv ${pkgdir}/usr/bin/clear ${pkgdir}/usr/bin/glxclear
	mv ${pkgdir}/usr/bin/line ${pkgdir}/usr/bin/glxline
}
