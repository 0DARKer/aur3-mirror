
# Contributor: T.Cunly

pkgname=doxys
pkgver=0.97
pkgrel=1
pkgdesc="A code documentation tool for C++/C"
url="http://www.doxys.dk/doxys_homepage/index.html"
license="GPL"
depends=(libstdc++5 lib32-gcc-libs lib32-glibc)
install=doxys.install
source=(http://www.doxys.org/download/doxys_0_97_linux64_bin.tar.bz2)

arch=("i686" "x86_64")
build() {
		INSTALLDIR=/usr/local/bin 
		
		[ -d $pkgdir$INSTALLDIR ] || mkdir -p $pkgdir$INSTALLDIR
		
		cp $srcdir/doxys_0_97_linux64_bin/doxys $pkgdir$INSTALLDIR
} 

 
