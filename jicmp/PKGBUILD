# Contributor: Kessia 'even' Pinheiro <kessiapinheiro at gmail.com>
pkgname=jicmp
pkgver=1.0.9
pkgrel=1
pkgdesc="Java interface to ICMP"
arch=('i686')
url="http://www.opennms.org"
license=('GPL')
depends=('jdk' 'jre')
makedepends=('automake')
source=("http://downloads.sourceforge.net/sourceforge/opennms/${pkgname}-${pkgver}.tar.gz")
md5sums=('ed50296043ae0243a0a68f4a2d22025c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --with-java=/opt/java
  make || return 1
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
