# Contributor: Markus Jochim <ich@markusjochim.de>
pkgname=rxvt-unicode-terminfo
pkgver=1
pkgrel=1
pkgdesc="Terminfo file for urxvt, useful for servers that need the file but not the terminal"
url="http://software.schmorp.de/pkg/rxvt-unicode.html"
arch=(i686 x86_64)
license=('GPL2')
conflicts=(rxvt-unicode)
source=(rxvt-unicode)
md5sums=('e3d33173180f96f4195033c4fae16a03')

build() {
	install -d ${pkgdir}/usr/share/terminfo/r/
	install -m 644 -o root -g root ${srcdir}/rxvt-unicode ${pkgdir}/usr/share/terminfo/r/
}

