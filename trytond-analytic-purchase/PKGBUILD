# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-analytic-purchase
_pkgname=trytond_analytic_purchase
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The analytic_purchase module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-analytic-account>=3.2' 'trytond-analytic-invoice>=3.2' 'trytond-purchase>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("242fb289f1ebfb9b3aded23ed5ee7b01")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}