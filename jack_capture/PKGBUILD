pkgname=jack_capture
pkgver=0.9.60
pkgrel=1
pkgdesc="Simple CLI recording tool for JACK"
url="http://www.notam02.no/arkiv/src/"
license="GPL"
arch=('i686' 'x86_64')
depends=('jack' 'lame')
optdepends=( 'meterbridge' )
source=(http://archive.notam02.no/arkiv/src/$pkgname-$pkgver.tar.gz)
md5sums=('3a5bf0063334e500cd2f365e7cb10b74')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
}

package(){
  cd ${srcdir}/${pkgname}-${pkgver}
  make install prefix=${pkgdir}/usr
}

