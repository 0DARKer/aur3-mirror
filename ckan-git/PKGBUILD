# Maintainer: Patrik Plihal <patrik.plihal@gmail.com>

pkgname=ckan-git

pkgver=0.0.1.SNAPSHOT
pkgrel=2
pkgdesc='The CKAN is a metadata respository and associated tools to allow you to find, install, and manage mods for Kerbal Space Program (ksp)'
arch=('any')
url="https://github.com/KSP-CKAN/CKAN/"
license=('MIT')
makedepends=('perl')
depends=('mono')

source=('https://github.com/KSP-CKAN/CKAN/archive/master.zip')
md5sums=('SKIP')

build() {
  cd $srcdir/CKAN-master
  ./bin/build
}

package() {
  mkdir -p "$pkgdir/usr/bin/"
  cp $srcdir/CKAN-master/ckan.exe "$pkgdir/usr/bin/ckan"
}

