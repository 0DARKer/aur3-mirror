# Contributor: Alexander RÃ¸dseth <rodseth@gmail.com>
pkgname=multipath-tools-git
pkgver=20110109
pkgrel=1
pkgdesc="Tools to drive the Device Mapper multipathing driver (contains kpartx)"
url="http://christophe.varoqui.free.fr/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('libaio' 'readline' 'device-mapper')
makedepends=('git')
_gitroot="http://kernel.org/pub/scm/linux/storage/multipath-tools/.git"
_gitname="multipath-tools"

build() {
  cd "$srcdir"

  msg "Connecting to github.com GIT server...."
  if [ -d "$srcdir/$_gitname" ] ; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot"
  fi
  msg "GIT checkout done or server timeout"
  cd "$_gitname"

  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"

} 

