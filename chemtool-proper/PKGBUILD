# Contributor: Connor Behan <connor.behan@gmail.com>

pkgname=chemtool-proper
pkgver=1.6.12
pkgrel=2
pkgdesc="Chemtool without the stupid right justified help menu"
arch=(i686 x86_64)
license=('GPL2')
url="http://ruby.chemie.uni-freiburg.de/~martin/chemtool/chemtool.html"
depends=('gtk2')
replaces=('chemtool')
provides=('chemtool')
options=(!libtool)
source=(http://ruby.chemie.uni-freiburg.de/~martin/chemtool/chemtool-$pkgver.tar.gz chemtool.desktop)

build() {
  cd $startdir/src/chemtool-$pkgver
  sed -i -e 's/.*right_justify.*//g' main.c
  ./configure --prefix=/usr --mandir=/usr/share/man
 make || return 1
 make DESTDIR=$startdir/pkg/ install
 install -D -m644 gnome/chemtool.png $startdir/pkg/usr/share/pixmaps/chemtool.png
 install -D -m644 $startdir/src/chemtool.desktop $startdir/pkg/usr/share/applications/chemtool.desktop
}

md5sums=('f9e0633cbda09fcfe5a4ea4c56bcd460' '8cbb6f7021bd5aaa6f6a31fc4d95a06e')
