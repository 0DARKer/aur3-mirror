pkgname=python2-envisagecore
pkgver=3.2.0
_githubtag=eccc2a6
pkgrel=1
pkgdesc="Extensible Application Framework"
arch=('any')
url="https://github.com/enthought/envisagecore"
license=('BSD')
depends=('python2' 'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('python2-distribute')
conflicts=('python-enthought-utils' 'python2-envisagecore-git' 'python-ets-envisagecore-svn')
options=(!emptydirs)

source=("https://github.com/enthought/envisagecore/tarball/${pkgver}")
md5sums=('43a8220ba85b2c86860f70ca7a4837e8')

build() {
  cd "$srcdir/enthought-envisagecore-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

