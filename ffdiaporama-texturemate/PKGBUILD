# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-texturemate
pkgver=1.0
pkgrel=2
pkgdesc="Additional background-images for ffDiaporama from texturemate.com"
arch=('any')
url="http://ffdiaporama.tuxfamily.org"
license=('cc-by-3.0')
depends=('ffdiaporama-devel')
options=(!strip !zipman)
source=(http://download.tuxfamily.org/ffdiaporama/Devel/ffDiaporama-texturemate.tar.gz)
md5sums=('42957152b9788cb249d6d71aa1590733')

package() {
  INSTALL() {
   mkdir -p $DESTDIR/$1
   cp $1/*.* $DESTDIR/$1/
   chmod 644 $DESTDIR/$1/*.* 
   }

  DESTDIR=$pkgdir/usr/share/ffDiaporama/background/texturemate

  INSTALL Asphalt
  INSTALL Brick
  INSTALL Cement
  INSTALL Clay
  INSTALL Clouds
  INSTALL Cobblestone
  INSTALL Digital
  INSTALL Fabric
  INSTALL Glass
  INSTALL Granite
  INSTALL Metal
  INSTALL Paint
  INSTALL Paper
  INSTALL Plants
  INSTALL Wall
  INSTALL Wood

  cp readme.txt $DESTDIR/readme.txt
  chmod 644 $DESTDIR/readme.txt

}
