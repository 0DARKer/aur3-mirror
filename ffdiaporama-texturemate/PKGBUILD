# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-texturemate
pkgver=1.0
pkgrel=3
pkgdesc="Additional background-images for ffDiaporama from texturemate.com"
arch=('any')
url="http://ffdiaporama.tuxfamily.org"
license=('cc-by-3.0')
depends=('ffdiaporama')
options=(!strip !zipman)
source=(http://download.tuxfamily.org/ffdiaporama/Archives/ffDiaporama-texturemate_${pkgver}.tar.gz)
md5sums=('5030865ab1229137753c79339cf070a7')

package() {
  cd ffDiaporama-texturemate

  DESTDIR=$pkgdir/usr/share/ffDiaporama/background/texturemate

  INSTALL() {
   mkdir -p $DESTDIR/$1
   cp $1/*.* $DESTDIR/$1/
   chmod 644 $DESTDIR/$1/*.* 
   }

  INSTALL Asphalt
  INSTALL Brick
  INSTALL Cement
  INSTALL Clay
  INSTALL Clouds
  INSTALL Cobblestone
  INSTALL Digital
  INSTALL Fabric
  INSTALL Glass
  INSTALL Granite
  INSTALL Metal
  INSTALL Paint
  INSTALL Paper
  INSTALL Plants
  INSTALL Wall
  INSTALL Wood

  install -m644 readme.txt $DESTDIR
}
