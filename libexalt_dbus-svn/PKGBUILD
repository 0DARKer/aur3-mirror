# Maintainer: Slappinjohn <slappinjohn@gmx.net>
# Contributor: Slappinjohn <slappinjohn@gmx.net>

pkgname=libexalt_dbus-svn
pkgver=76
pkgrel=1
pkgdesc="Networkmanager for e17 written by Watchwolf"
arch=('i686' 'x86_64')
url="http://watchwolf.fr/wiki/doku.php?id=exalt"
license=('GPL')
depends=('libexalt-svn')
makedepends=('svn' 'pkgconfig')
provides=('exalt')
options=('!libtool')

source=()
md5sums=()

_svntrunk="svn://svn.berlios.de/exalt/trunk/libexalt_dbus"
_svnmod="libexalt_dbus"

build() {
   cd $srcdir

msg "Connecting to $_svntrunk SVN server...."
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build
  
  msg "Building libexalt_dbus..."
  ./autogen.sh --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  rm -r $startdir/src/$_svnmod-build
}
# vim:syntax=sh
