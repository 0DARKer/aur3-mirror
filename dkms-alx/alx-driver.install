post_install() {
	DKMS=`which dkms 2>/dev/null`

	echo ">>> DKMS: Module add, build, and install"

	$DKMS add -m alx -v 20121003
	$DKMS build -m alx -v 20121003
	$DKMS install -m alx -v 20121003
	modprobe alx

	/sbin/depmod -a

	cat <<EOF
EOF
}

pre_upgrade() {
	pre_remove
}

pre_remove() {
	DKMS=`which dkms 2>/dev/null`
	echo ">>> DKMS: Module uninstall"

	line=`$DKMS status -m alx`
	if echo "$line" | grep -E 'added|built|installed'; then
		version=`echo "$line" | sed "s/alx,\([^,]*\)[,:].*/\1/;t;d"`
		$DKMS remove -m alx -v $version --all
	fi

	/sbin/depmod -a

}

post_upgrade() {
	cd lib/modules
	for i in extramodules-*; do depmod $(cat "$i/version"); done
	cd ../..
}

