# Contributor: Yumi Nanako <yumileroy [at] yahoo.com>

pkgname=an
pkgver=1.1
pkgrel=1
pkgdesc="Anagram Generator"
arch=(any)
url="https://alioth.debian.org/projects/anagram/"
license=('GPL2')
depends=('words')
makedepends=('icu')
source=("$pkgname-$pkgver.tar.bz2::http://ftp.debian.org/debian/pool/main/a/an/an_${pkgver}.orig.tar.bz2")
md5sums=('25f885d7dfe49e7cc665d50e10be8fb1')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -D -m 755 an "$pkgdir"/usr/bin/an
  install -D -m 644 an.6 "$pkgdir"/usr/share/man/man6/an.6
}
