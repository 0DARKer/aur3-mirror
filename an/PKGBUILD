# Contributor: Yumi Nanako <yumileroy [at] yahoo.com>

pkgname=an
pkgver=1.0
pkgrel=1
pkgdesc="Fast anagram generator."
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/an"
license=('GPL')
depends=('words')
source=(http://archive.ubuntu.com/ubuntu/pool/universe/a/an/${pkgname}.orig.tar.bz2
    674496-as-needed.patch)
md5sums=('259f6ce922265eee3ce0a0ecfcd59b7f' '51fde356fed7428bf46644750bb1d922')

build() {
  cd $srcdir/
  patch -p0 -i 674496-as-needed.patch
  cd "$srcdir/${pkgname}-${pkgver}"

  make || return 1
  mkdir -p ${startdir}/pkg/usr/bin/
  mkdir -p ${startdir}/pkg/usr/share/man/man6
  install -s an ${startdir}/pkg/usr/bin/an
  gzip -9 an.6
  install -m 644 an.6.gz ${startdir}/pkg/usr/share/man/man6
}

