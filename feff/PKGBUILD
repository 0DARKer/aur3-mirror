# Contributor: Christian Holme <cholme at gmx dot com>

pkgname=feff
pkgver=1.3
pkgrel=1
pkgdesc="Qt frontend for FFmpeg"
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/Feff?content=140298""http://qt-apps.org/content/show.php/Feff?content=140298"
license=('GPL3')
depends=('qt' 'ffmpeg')
source=(http://qt-apps.org/CONTENT/content-files/140298-feff_source.tar.gz)
md5sums=('f815a9b1019b16a816907b97b4e30ab1')

build() {
  	cd "$srcdir"
    [[ -e "$pkgname-$pkgver" ]] && rm -rf "$pkgname-$pkgver"
    mv source "$pkgname-$pkgver"
  	cd "$srcdir/$pkgname-$pkgver"
   	qmake
   	make
}

package() {
	install -Dm 755 $srcdir/$pkgname-$pkgver/Bin/feff $pkgdir/usr/bin/feff
}

