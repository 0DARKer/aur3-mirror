post_install() {
  echo "Updating TeX tree..."
  /usr/bin/mktexlsr
  /usr/bin/updmap-sys --quiet --enable Map ugm.map
}

post_upgrade() {
  echo "Updating TeX tree..."
  /usr/bin/mktexlsr
}

post_remove() {
  echo "Updating TeX tree..."
  /usr/bin/mktexlsr
  /usr/bin/updmap-sys --quiet --disable ugm.map
}

