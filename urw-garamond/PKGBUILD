# Contributor: bender02 at gmx dot com
pkgname=urw-garamond
pkgver=1.0
pkgrel=4
pkgdesc="URW Garamond No8 Adobe Type1 fonts from CTAN (for texlive)"
arch=('any')
license=('alladin')
url=("http://tug.ctan.org/cgi-bin/ctanPackageInformation.py?id=urw-garamond")
depends=(texlive-fontsextra)
replaces=(texlive-urwgaramond)
conflicts=(texlive-urwgaramond)
install=$pkgname.install
source=(http://tug.ctan.org/fonts/urw/garamond.zip)
md5sums=('a60beaf12c12c69eeb8fdc82bd481949')

build() {
  cd $srcdir
  _texmf_root=usr/share
  install -d $pkgdir/$_texmf_root/texmf/fonts/afm/urw/garamond || return 1
  install -d $pkgdir/$_texmf_root/texmf/fonts/type1/urw/garamond || return 1
  install -m 644 garamond/*.afm \
    $pkgdir/$_texmf_root/texmf/fonts/afm/urw/garamond || return 1
  install -m 644 garamond/*.pfb \
    $pkgdir/$_texmf_root/texmf/fonts/type1/urw/garamond || return 1
  bsdtar -x -f garamond/ugm.zip -C $pkgdir/$_texmf_root/texmf || return 1
  rm -rf $pkgdir/$_texmf_root/texmf/{doc,dvips}
  # chgrp -R tex $pkgdir/$_texmf_root/texmf || return 1
  # find $pkgdir/$_texmf_root/texmf -type d -exec chmod 775 {} \; || return 1
}
