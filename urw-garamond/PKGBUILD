# Contributor: bender02 at archlinux dot us
pkgname=urw-garamond
pkgver=1.0
pkgrel=6
pkgdesc="URW Garamond No8 Adobe Type1 fonts from CTAN (for texlive)"
arch=('any')
license=('alladin')
url=("http://tug.ctan.org/pkg/urw-garamond")
depends=(texlive-fontsextra)
replaces=(texlive-urwgaramond)
conflicts=(texlive-urwgaramond)
install=$pkgname.install
source=(http://mirror.ctan.org/fonts/urw/garamond.zip urw-garamond.maps)
md5sums=('a60beaf12c12c69eeb8fdc82bd481949'
         'c8d3a18033c3ab511391862ae8dfd6f8')

package() {
  cd $srcdir
  _texmf_root=usr/share
  install -d $pkgdir/$_texmf_root/texmf/fonts/afm/urw/garamond
  install -d $pkgdir/$_texmf_root/texmf/fonts/type1/urw/garamond
  install -m 644 garamond/*.afm \
    $pkgdir/$_texmf_root/texmf/fonts/afm/urw/garamond
  install -m 644 garamond/*.pfb \
    $pkgdir/$_texmf_root/texmf/fonts/type1/urw/garamond
  bsdtar -x -f garamond/ugm.zip -C $pkgdir/$_texmf_root/texmf
  rm -rf $pkgdir/$_texmf_root/texmf/{doc,dvips}
}
