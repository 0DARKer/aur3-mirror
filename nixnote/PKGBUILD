# Maintainer: Dan Serban

pkgname=nixnote
pkgver=1.x.latest
pkgrel=1
pkgdesc="Formerly called nevernote, nixnote is a clone of Evernote designed to run on Linux"
url=http://nevernote.sourceforge.net/
arch=(i686 x86_64)
license=(GPL)
depends=(java-runtime libpng12)
makedepends=(lynx)
provides=(nevernote)
conflicts=(nevernote)
_filearch=i386
[ "${CARCH}" == "x86_64" ] && _filearch=amd64

build()
{
  rm nixnote.tar.gz 2>/dev/null || true
  _url=$(lynx -dump "http://sourceforge.net/projects/nevernote/files/Current/" | grep -o http.*${_filearch}.tar.gz/download$ | tail -1)
  wget -O nixnote.tar.gz "${_url}"
  bsdtar -xf nixnote.tar.gz
  cd nixnote
  mv usr "${pkgdir}"/
  cd "${pkgdir}"/usr/bin
  mv nixnote.sh nixnote
}

