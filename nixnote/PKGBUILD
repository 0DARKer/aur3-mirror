# Maintainer: Aliaksandr Stelmachonak <mail.avatar(at)gmail(dot)com>

pkgname=nixnote
pkgver=1.2
pkgrel=1
pkgdesc="Formerly called nevernote, nixnote is a clone of Evernote designed to run on Linux"
url="http://nevernote.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('java-runtime' 'libpng12')
provides=('nevernote')
conflicts=('nevernote')
_filearch=i386
[ "${CARCH}" == "x86_64" ] && _filearch=amd64
source=(${pkgname}-${pkgver}_${_filearch}.tar.gz::http://sourceforge.net/projects/nevernote/files/Current/${pkgname}-${pkgver}_${_filearch}.tar.gz/download)
md5sums=('28ba7dbd824ea49be7595c6b8c526178')
[ "${CARCH}" == "x86_64" ] && md5sums=('df960f77d637a41dd203d60fd987a79e') 

build()
{
  bsdtar -xf ${pkgname}-${pkgver}_${_filearch}.tar.gz
  cd nixnote
  mv usr ${pkgdir}
  cd ${pkgdir}/usr/bin
  mv nixnote.sh nixnote
}
