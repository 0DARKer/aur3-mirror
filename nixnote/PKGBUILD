# Maintainer: J. Luck <jluck@udel.edu>
pkgbranch=NixNote 1.6
pkgname=nixnote
pkgver=1.6
pkgrel=2
pkgdesc="Formerly called nevernote, nixnote is a clone of Evernote designed to run on Linux"
url="http://www.sourceforge.net/projects/nevernote/files/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('java-runtime' 'libpng12')

if [ "${CARCH}" == "x86_64" ]; then
  _filearch=amd64
	md5sums=('d3f98f571cc80155313b13e708f23e48')
else
  _filearch=i386
  md5sums=('d79e6dde6ec3acd3f973f8469746df25')
fi

source=(${pkgname}-${pkgver}_${_filearch}.tar.gz::http://sourceforge.net/projects/nevernote/files/${pkgbranch}/${pkgname}-${pkgver}_${_filearch}.tar.gz/download)

build()
{
  bsdtar -xf ${pkgname}-${pkgver}_${_filearch}.tar.gz
  cd nixnote
  mv usr ${pkgdir}
  cd ${pkgdir}/usr/bin
  mv nixnote.sh nixnote
}
