# Maintainer: Dan Serban

pkgname=nixnote
pkgver=1.0
pkgrel=1
pkgdesc="Formerly called nevernote, nixnote is a clone of Evernote designed to run on Linux"
url=http://nevernote.sourceforge.net/
arch=(i686 x86_64)
license=(GPL)
depends=(java-runtime libpng12)
provides=(nevernote)
conflicts=(nevernote)
_filearch=i386
[ "${CARCH}" == "x86_64" ] && _filearch=amd64
source=("http://downloads.sourceforge.net/project/nevernote/NixNote-${pkgver}/nixnote-${pkgver}_${_filearch}.tar.gz")
_32bit_md5sum="d81fb6ab6a20d6ca8eba206d21fcd2c0"
_64bit_md5sum="b3f514ed1efee8c35a845ad6a1e9768b"
md5sums=${_32bit_md5sum}
[ "${CARCH}" == "x86_64" ] && md5sums=${_64bit_md5sum}

build()
{
  cd ${pkgname}
  mv usr "${pkgdir}"/
  cd "${pkgdir}"/usr/bin
  mv ${pkgname}.sh ${pkgname}
}
