# Maintainer: BxS <bxsbxs@gmail.com>

pkgname=microchip-mplabc32_bin
pkgver=2.01
pkgrel=1
pkgdesc="C compiler for PIC32"
arch=('i686' 'x86_64')
url="http://www.microchip.com/stellent/idcplg?IdcService=SS_GET_PAGE&nodeId=2615&dDocName=en532454"
license=('custom')
[ "$CARCH" = "x86_64" ] && depends=('lib32-glibc')
provides=(mplabc32)
conflicts=(mplabc32)
replaces=(mplabc32)
options=(!strip docs libtool emptydirs !zipman)
install=microchip-mplabc32_bin.install
_installer="mplabc32-v$pkgver-linux-installer.run"
source=("http://ww1.microchip.com/downloads/mplab/X_Beta/$_installer"
	'LICENSE')
md5sums=('9c332abcea7b3674618a65fa1d8fa33b'
         'cad33d6fdff4a0327ee80d81e7943196')

build() {
  cd $srcdir

  chmod 0755 $_installer
}

package() {
  cd $pkgdir

  _install_dir="$pkgdir/opt/microchip/mplabc32/v$pkgver"

  mkdir -p $_install_dir

  $srcdir/$_installer --prefix $_install_dir --edition lite --mode unattended &> '/dev/null'

  rm $_install_dir/Uninstall*

  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp "$srcdir/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
