pkgname=python-microfiber
_pkgname=microfiber
pkgver=0.2.0
pkgrel=1
pkgdesc="A fabric for a lightweight Couch."
arch=('any')
url="http://www.kickstarter.com/projects/novacut/novacut-pro-video-editor"
license=('LGPL3')
depends=('python')
source=("https://launchpad.net/$pkgname/trunk/0.2/+download/$_pkgname-$pkgver.tar.gz")
md5sums=('b0cbc04cc5d35fe948bc212310984bf5')

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir" -O1
}
