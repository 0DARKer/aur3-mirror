# Maintainer: Roland Singer <roland@manjarolinux.org>

pkgname=console-setup
pkgver=1.73
pkgrel=2
pkgdesc="This package provides the console with the same keyboard configuration scheme that X Window System has."
arch=('any')
url="http://packages.debian.org/sid/console-setup"
license=('GPL2')
depends=('kbd' 'xkeyboard-config' 'glibc' 'perl')
makedepends=('make')
source=("http://ftp.de.debian.org/debian/pool/main/c/${pkgname}/${pkgname}_${pkgver}.tar.gz")

package() {
	cd ${srcdir}/${pkgname}

	make build-linux
	make prefix=${pkgdir} install-linux

	mkdir -p ${pkgdir}/usr
	mv ${pkgdir}/bin ${pkgdir}/usr/bin
	mv ${pkgdir}/share ${pkgdir}/usr/share
}


md5sums=('a5b5d46166e7454e9c0e06a48f0eafc2')
