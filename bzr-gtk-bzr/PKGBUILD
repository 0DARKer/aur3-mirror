pkgname=bzr-gtk-bzr
pkgver=0.96.2
_revno=654
pkgrel=2
pkgdesc="Plugin for Bazaar that aims to provide GTK+ interfaces to most Bazaar operations. It downloads source from launchpad bazaar repository."
arch=('i686' 'x86_64')
url="http://bazaar-vcs.org/bzr-gtk"
license=('GPL')
depends=('pygtk' 'bzr' 'pycairo' 'libglade' 'bzr-stats')
conflicts=('bzr-gtk')

build() {
  bzr co -r $_revno --lightweight http://bazaar.launchpad.net/~bzr-gtk/bzr-gtk/trunk "${startdir}/src"
  cd "${startdir}/src"
  python setup.py install --prefix'=/usr' --root="${startdir}/pkg" || return 1
}
