#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-poe-component-client-mpd'
_pkgname='POE-Component-Client-MPD'
pkgver='1.100430'
pkgrel='1'
pkgdesc="full-blown poe-aware mpd client library"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-moosex-has-sugar' 'perl-audio-mpd-common' 'perl-poe' 'perl-moosex-semiaffordanceaccessor' 'perl-moosex-poe' 'perl-test-corpus-audio-mpd')
url='http://search.cpan.org/dist/POE-Component-Client-MPD/'
source=(http://search.cpan.org/CPAN/authors/id/J/JQ/JQUELIN/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('1632cb044114e652167bff5928197dc000e6db1fe31c0dbaae753e41b0c35a84')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1

  perl Build.PL || return 1

  [ "$skiptest" = "1" ] || \
  perl Build test || return 1

  perl Build \
    --installdirs=vendor \
    --destdir="${pkgdir}" \
    install || return 1

  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
