# Maintainer: Dennis Fink <the_metalgamer@hackerspace.lu>

pkgname=python-acrylamid-git
pkgver=20130208
pkgrel=4
pkgdesc="static blog generator in python with incremental rendering."
arch=('any')
url="http://posativ.org/acrylamid/"
license=('BSD')
depends=('python-jinja>=2.4' 'python-markdown>=2.0.1' 'python-unidecode')
makedepends=('python-distribute' 'git')
optdepends=('python-pygments: Syntax Highlighting'
'python-docutils: reStructuredText'
'python-textile: Textile'
'python-yaml: exact YAML parser'
'python-twitter-tools: Twitter'
'discount: Discount'
'python-mako: Mako Templating'
)
provides=('python-acrylamid')
conflicts=('python-acrylamid')

_gitroot="git://github.com/posativ/acrylamid.git"
_gitname="acrylamid"

build() {

  cd "$srcdir"
  msg "Connecting to GIT server..."
  if [ -d "$srcdir/$_gitname" ]; then
    cd "$srcdir/$_gitname" && git pull origin
    cd "$srcdir"
    msg "The localfiles are updates."
  else
    git clone --depth=1 "$_gitroot" "$_gitname"
  fi
  msg "GIT checkout done or server timeout"

  rm -rf "$srcdir/$_gitname-build"
  mkdir "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname" && ls -A | grep -v .git | xargs -d '\n' cp -r -t ../$_gitname-build # do not copy over the .git folder
  cd "$srcdir/$_gitname-build"

  python setup.py build
}

package() {

  cd "$srcdir/$_gitname-build"
  python setup.py install --root="$pkgdir" --optimize=1
  mv $pkgdir/usr/bin/acrylamid $pkgdir/usr/bin/acrylamid3
  install -D -m644 $srcdir/$_gitname-build/LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE
}

# vim:set ts=2 sw=2 et:
