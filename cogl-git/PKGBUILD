# Maintainer: Yosef Or Boczko <yosefor3@walla.com>

_pkgname=cogl
pkgname=$_pkgname-git
pkgver=20130320
pkgrel=1
pkgdesc="An object oriented GL/GLES Abstraction/Utility Layer"
arch=('i686' 'x86_64')
url="http://www.clutter-project.org/"
license=('GPL2')
depends=('libdrm' 'libxext' 'libxdamage' 'libxcomposite' 'gdk-pixbuf2' 'pango' 'wayland')
makedepends=('mesa' 'gobject-introspection')
options=(!libtool !emptydirs)
conflicts=('cogl')
replaces=('cogl')
provides=('cogl' 'cogl=1.13.5')

_gitroot=http://git.gnome.org/browse/cogl
_gitname=cogl

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
    
    cd $srcdir/$_gitname
    
    git checkout -b cogl-1.14 origin/cogl-1.14
    
    cd ..
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  
  ./autogen.sh --prefix=/usr --enable-cairo=yes \
							 --enable-gdk-pixbuf=yes \
							 --enable-cogl-pango=yes \
							 --enable-glx=yes \
							 --enable-xlib-egl-platform=yes \
							 --enable-wayland-egl-platform=yes \
							 --enable-wayland-egl-server=yes \
							 --enable-introspection=yes \
							 --enable-gtk-doc
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  
  make DESTDIR="$pkgdir" install
  ln -s "$pkgdir/usr/lib/libcogl-pango.so.12.1.0" "$pkgdir/usr/lib/libcogl-pango.so.0" 
  ln -s "$pkgdir/usr/lib/libcogl.so.12.1.0" "$pkgdir/usr/lib/libcogl.so.9" 
  
  rm -rf "$srcdir/$_gitname-build"
}
