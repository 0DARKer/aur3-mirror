# Maintainer: Yosef Or Boczko <yosefor3@walla.com>

_pkgname=cogl
pkgname=$_pkgname-git
pkgver=1.10.0.703.gc4ed67f
pkgrel=1
pkgdesc="An object oriented GL/GLES Abstraction/Utility Layer"
arch=('i686' 'x86_64')
url="http://www.clutter-project.org/"
license=('GPL2')
depends=('libdrm' 'libxext' 'libxdamage' 'libxcomposite' 'gdk-pixbuf2' 'pango' "wayland>=1.1.90")
makedepends=('mesa' 'gobject-introspection')
options=(!libtool !emptydirs)
conflicts=('cogl')
replaces=('cogl')
provides=('cogl' 'cogl=2.0.0')
source=('git://git.gnome.org/cogl')
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/$_pkgname"

  git checkout -b cogl-1.16 origin/cogl-1.16

  ./autogen.sh --prefix=/usr --enable-cairo=yes \
	       --enable-gdk-pixbuf=yes \
	       --enable-cogl-pango=yes \
	       --enable-glx=yes \
	       --enable-xlib-egl-platform=yes \
	       --enable-wayland-egl-platform=yes \
	       --enable-wayland-egl-server=yes \
	       --enable-introspection=yes \
	       --enable-gtk-doc
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
