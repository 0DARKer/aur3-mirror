# Contributor: Ray Blostein <rblostein [at] gmail.com>
pkgname=barry-git
pkgver=20110203
pkgrel=1
pkgdesc="Barry is a GPL C++ library for interfacing with the RIM BlackBerry Handheld."
arch=('i686' 'x86_64')
url="http://www.netdirect.ca/software/packages/barry/"
license=('GPL')
depends=('libusb' 'zlib' 'libglademm' 'libtar' 'libsigc++')
makedepends=('git' 'make' 'gcc' 'patch' 'pkg-config' 'autoconf' 'automake' 'libtool' 'gettext')
optdepends=('fuse: for bfuse')
provides=('barry')
conflicts=('barry')
source=('tarfile-ops-nt.cc.patch')
md5sums=('1f808132b402c4ea68a0d1fc3f19142c')


_gitroot="git://repo.or.cz/barry.git"
_gitname="barry"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

# Download sources from the git repository
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

# Apply patches
  cd "$srcdir/$_gitname-build/src"
  patch -p0 < $srcdir/tarfile-ops-nt.cc.patch
  cd "$srcdir/$_gitname-build"

# Build the package
  ./buildgen.sh
  ./configure --prefix=/usr --enable-gui
  make || return 1
  make DESTDIR="$pkgdir/" install

# Remove libtool files
  find "$pkgdir/" -name "*.la" -exec rm {} \;
} 
