# Contributor: Bartosz Chmura <chmurli at gmail dot com>

pkgname=retext
pkgver=0.5.1
pkgrel=1
pkgdesc="simple text editor for MarkDown syntax"
arch=('any')
url="http://sourceforge.net/p/retext/home/"
license=('GPL')
depends=('python2'
	 'python2-qt'
	 'python-markdown'
	 'qt>=4')
optdepends=('python-gdata: needed if you want to use Google Docs export')
source=('http://sourceforge.net/projects/retext/files/ReText-beta/ReText_0.5.1.tar.gz'
	'retext.desktop')
options=(!strip)
md5sums=('2f25a85fbec2875ec02e6bec9085ee5b'
	'f3f2c378ce2a81df5996cb1a7a84e6f9')


build () {
	
	
	cd $pkgdir

	install -d -m 755 usr/bin || return 1
	install -m 755 ${srcdir}/${pkgname}.py usr/bin || return 1


	install -d -m 755 usr/lib/retext || return 1
	install -m 644 ${srcdir}/icons/retext.png usr/lib/retext || return 1

	
	install -d -m 755 usr/share/applications || return 1
	install -m 644 ${srcdir}/retext.desktop usr/share/applications || return 1


}
