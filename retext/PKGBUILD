# Maintainer: Bartosz Chmura <chmurli at gmail dot com>

pkgname=retext
pkgver=0.8.1
pkgrel=1
pkgdesc="simple text editor for MarkDown syntax"
arch=('any')
url="http://sourceforge.net/p/retext/home/"
license=('GPL')
depends=('python2'
	 'python2-qt'
	 'python-markdown'
	 'qt>=4')
optdepends=('python-gdata: needed if you want to use Google Docs export')
source=('http://sourceforge.net/projects/retext/files/ReText-beta/ReText_0.8.1.tar.gz'
	'retext.desktop')
options=(!strip)
md5sums=('a6452062b2a1a5579f0385368e6ca162'
	'acdecf07e08faab10cea68b8274bd74d')


build () {
	
	mkdir -p ${pkgdir}/usr/bin/${pkgname}

	cd ${srcdir}
	mkdir retext_temp && cd retext_temp
	tar xvzf ../ReText_${pkgver}.tar.gz


	cp -R * ${pkgdir}/usr/bin/${pkgname} || return 1
	#chmod -R 755 ${pkgdir}/usr/bin/${pkgname} || return 1


	#install -d -m 755 ${pkgdir}/usr/bin || return 1
	#install -m 755 ${srcdir}/${pkgname}.py ${pkgdir}/usr/bin || return 1

	#install -d -m 755 ${pkgdir}/usr/lib/retext || return 1
	#install -m 644 ${srcdir}/icons/retext.png ${pkgdir}/usr/lib/retext || return 1

	
	install -d -m 755 ${pkgdir}/usr/share/applications || return 1
	install -m 644 ${srcdir}/retext.desktop ${pkgdir}/usr/share/applications || return 1


}
