pkgdesc="'Role based authorization for Catalyst based on Catalyst::Plugin::Authentication'"
arch=(i686 x86_64)
license=('perl')
url="http://search.cpan.org/~bricas/Catalyst-Plugin-Authorization-Roles"
options=(!emptydirs)

depends=('perl>=5.8.0' 'perl-universal-isa' 'perl-catalyst-plugin-authentication' 'perl-catalyst-runtime' 'perl-set-object')
makedepends=('perl-test-exception' 'perl')

#provides=('Catalyst-Plugin-Authorization-Roles')
provides=("catalyst-plugin-authorization-roles=${pkgver}" "Catalyst::Plugin::Authorization::Roles=${pkgver}" "perl-catalyst-plugin-authorization-roles=${pkgver}")

source=(http://search.cpan.org/CPAN/authors/id/${_author:0:1}/${_author:0:2}/${_author}/${_realname}-${pkgver}.tar.gz)

build() {
  _expected_dir="${srcdir}/${_realname}-${pkgver}"
  if [ -d "$_expected_dir" ]; then
    cd "$_expected_dir"
  else
    _expected_dir="${srcdir}/$(bsdtar -t -f $(basename $source) | head -n1)"
    if [ -d "$_expected_dir" ]; then
      cd "$_expected_dir"
    else
      _makefile=$(find $srcdir -iname Makefile.PL)
      if [ ! -z "$_makefile" ]; then
        _expected_dir=$(dirname $_makefile)
        if [ -d "$_expected_dir" ]; then
          cd "$_expected_dir"
        else
          echo "[1;31mERROR[0m unable to detect source directory"
          echo "[1;34m-->[0m this is often due to CPAN's lack of standard naming conventions"
          echo "[1;34m-->[0m it may be possible to fix this by adjusting the build function in the PKGBUILD"
        fi
      fi
    fi
  fi
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

