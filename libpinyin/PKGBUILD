pkgname=libpinyin
pkgver=0.3.0
pkgrel=1
pkgdesc="Library to deal with pinyin."
arch=('i686' 'x86_64')
url="https://github.com/libpinyin/libpinyin"
license=('GPL')
depends=('db')
makedepends=('automake' 'libtool' 'autoconf')
options=(!makeflags !libtool)

source=(https://github.com/downloads/libpinyin/libpinyin/libpinyin-0.3.0.tar.gz)

md5sums=('fbb97e0a07eab0cc55aff067598a4d68')

build() {
  cd ${srcdir}/libpinyin-$pkgver

  (aclocal && libtoolize --force && autoheader && automake -a && autoconf) || return 1
  (./configure --prefix=/usr && make) || return 1
}

package() {
  cd ${srcdir}/libpinyin-$pkgver
  make DESTDIR=${pkgdir} install || return 1

  # manually rm .la files
#  rm ${pkgdir}/usr/lib/*.la

  # manually copy headers
#  headers=`find src/ -name \*.h`
#  header_dest="${pkgdir}/usr/include/libpinyin-0.3/"
#  install -d $header_dest || return 1

#  for i in $headers; do
#    install -m 644  $i $header_dest || return 1
#  done
}
