# Contributor: Anton Bazhenov <anton.bazhenov at gmail>
# Maintainer: Sebastien Binet <binet@cern.ch>

pkgname=minuit
pkgver=1.7.9
pkgrel=2
pkgdesc="A physics analysis tool for function minimization (version 1.x)"
arch=('i686' 'x86_64')
url="http://lcgapp.cern.ch/project/cls/work-packages/mathlibs/minuit/"
license=('LGPL')
depends=('libstdc++5')
options=('!libtool')
source=(http://seal.web.cern.ch/seal/minuit/releases/${pkgname/m/M}-${pkgver//./_}.tar.gz \
  minuit.patch)
md5sums=('10fd518fc778317fdadbc4ef6f7ce8e4'
         'a17e50fb6c0393c0450af15348b6d500')

build() {
  cd $srcdir/${pkgname/m/M}-${pkgver//./_}
  patch -p0 -i ../minuit.patch || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
