# Maintainer: Laurent Hofer <laurenth at lavabit dot com>
pkgname=fltk-giac
pkgver=1.3.0
pkgrel=1
pkgdesc="Graphical user interface toolkit for X modified by giac/xcas' author"
arch=('i686' 'x86_64')
url="http://www-fourier.ujf-grenoble.fr/~parisse/giac.html"
license=('GPL')
depends=('libjpeg' 'libpng' 'libxinerama' 'libxft' 'gcc-libs')
makedepends=()
checkdepends=()
optdepends=()
provides=('fltk')
conflicts=('fltk')
install=
source=("http://www-fourier.ujf-grenoble.fr/~parisse/giac/freebsd/$pkgname.tar.gz")
md5sums=('d71fee3a06747f263d81e7142306ab5b')

build() {
  cd "$srcdir/fltk-$pkgver"
  CXXFLAGS='-fPIC'
  ./configure --prefix=/usr --enable-xft --enable-threads
  make
}

package() {
  cd "$srcdir/fltk-$pkgver"
  make DESTDIR="$pkgdir/" install
  chmod 644 $pkgdir/usr/lib/*
}
