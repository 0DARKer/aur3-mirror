# Contributor: Davorin Uƒçakar <davorin.ucakar@gmail.com>

pkgname=gtkradiant
pkgver=1.6
pkgrel=3
pkgdesc="Level editor for Doom 3, Nexuiz, Quake 4, Tremulous, Warsow etc..."
arch=('i686' 'x86_64')
url="http://icculus.org/gtkradiant"
license=("GPL" "BSD" "LGPL")
depends=('gtk2' 'gtkglext' 'libxml2' 'zlib' 'libpng' 'libjpeg')
source=("https://icculus.org/gtkradiant/downloads/$pkgver/GtkRadiant-$pkgver-Linux-$CARCH-20121007.tar.gz")

if test "$CARCH" == x86_64; then
  md5sums=('49c8b5e35e3fa148e00ef193be52d231')
else
  md5sums=('51ff52f36aefa7db1e0a90ace03dbab0')
fi

package() {
  mkdir -p $pkgdir/usr/share/gtkradiant
  mkdir -p $pkgdir/usr/bin

  cd "${srcdir}/GtkRadiant-$pkgver-Linux-$CARCH-20121007"
  cp -r * $pkgdir/usr/share/gtkradiant/
  ln -sf /usr/share/gtkradiant/radiant.bin $pkgdir/usr/bin/radiant
}
