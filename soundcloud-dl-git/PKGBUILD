#Maintainer: M0Rf30

pkgname=soundcloud-dl-git
pkgver=r162.e9c847c
pkgrel=1
pkgdesc="Souncloud music downloader"
url=(https://github.com/lukapusic/soundcloud-dl)
arch=(any)
depends=(curl recode)
makedepends=(git)
optdepends=("python2-eyed3: for mp3 tagging")
source=($pkgname::git+https://github.com/lukapusic/soundcloud-dl
	'soundcloud-dl')
install=soundcloud-dl.install
license=(GPL2)

pkgver() {
	cd $pkgname
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	mkdir -p $pkgdir/opt/soundcloud-dl/
	cp $pkgname/example_.scdl.cfg ${pkgdir}/opt/soundcloud-dl       
	install -Dm755 $pkgname/scdl ${pkgdir}/opt/soundcloud-dl/
        install -Dm755 $srcdir/soundcloud-dl ${pkgdir}/usr/bin/soundcloud-dl
}

md5sums=('SKIP'
         '08fa6d03d9b000d22e714ad2d80cb4e4')
