#Maintainer: ajs124

pkgname=soundcloud-dl-git
pkgver=r81.e47aac6
pkgrel=1
pkgdesc="Souncloud music downloader"
url=(https://github.com/lukapusic/soundcloud-dl)
arch=(any)
depends=(curl recode)
makedepends=(git)
optdepends=("python2-eyed3: for mp3 tagging")
source=($pkgname::git+https://github.com/lukapusic/soundcloud-dl)
sha256sums=(SKIP)
license=(GPL2)

pkgver() {
	cd $pkgname
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	install -Dm755 $pkgname/scdl.sh ${pkgdir}/usr/bin/soundcloud-dl
}
