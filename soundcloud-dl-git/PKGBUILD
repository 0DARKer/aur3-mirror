#Maintainer: M0Rf30

pkgname=soundcloud-dl-git
pkgver=r191.001b955
pkgrel=1
pkgdesc="Souncloud music downloader"
url=(https://github.com/lukapusic/soundcloud-dl)
arch=(any)
depends=(curl recode)
makedepends=(git)
optdepends=("python2-eyed3: for mp3 tagging")
source=($pkgname::git+https://github.com/lukapusic/soundcloud-dl)
install=soundcloud-dl.install
license=(GPL2)

pkgver() {
	cd $pkgname
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	mkdir -p $pkgdir/opt/soundcloud-dl/       
	install -Dm755 $pkgname/scdl ${pkgdir}/opt/soundcloud-dl/
        install -Dm755 $pkgname/install ${pkgdir}/opt/soundcloud-dl/
	
	install -dm755 "${pkgdir}/usr/bin"

	ln -s /opt/soundcloud-dl/scdl "${pkgdir}/usr/bin/scdl"
        ln -s /opt/soundcloud-dl/install "${pkgdir}/usr/bin/scdl-config"
}

md5sums=('SKIP'
         '08fa6d03d9b000d22e714ad2d80cb4e4')
md5sums=('SKIP')
