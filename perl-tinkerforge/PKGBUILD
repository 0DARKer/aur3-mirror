pkgname='perl-tinkerforge'
pkgver='0.01'
pkgrel='1'
pkgdesc="A perl binding for the TinkerForge hard-/software"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=0' 'glibc>=2.18')
makedepends=()
url='http://search.cpan.org/dist/TinkerForge'
source=('http://search.cpan.org/CPAN/authors/id/J/JO/JOBA/TinkerForge-0.01.tar.gz')
md5sums=('591f9d6a5dd434205480b7ec1f4a06ec')
sha512sums=('4411ed4f73216d39cdc9a0aecc447d6fcc1880549269bcc27413aa18342cd491f4c82a4dd173c8453ab29599c179c226c5f333baa6c8b82ad8db8561d131d605')
_distdir="TinkerForge-0.01"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

