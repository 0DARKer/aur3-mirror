# Maintainer: Daniele Paolella <dp@mcrservice.it>
pkgname=tmpwatch
pkgver=2.10.1
pkgrel=1
pkgdesc="Removes files which haven't been accessed for a period of time"
arch=('i686' 'x86_64')
url="http://fedorahosted.org/tmpwatch/"
license=('GPL2')
depends=('glibc')
source=("https://fedorahosted.org/releases/t/m/tmpwatch/tmpwatch-$pkgver.tar.bz2")
md5sums=('c26ac6aef91e230f748b08b066c406d9')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
