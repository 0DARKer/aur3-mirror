# Maintainer: Daniele Paolella <dp@hostess-promoter.com>
pkgname=tmpwatch
pkgver=2.10.3
pkgrel=1
pkgdesc="Removes files which haven't been accessed for a period of time"
arch=('i686' 'x86_64')
url="http://fedorahosted.org/tmpwatch/"
license=('GPL2')
depends=('glibc')
changelog=ChangeLog
source=("https://fedorahosted.org/releases/t/m/tmpwatch/tmpwatch-$pkgver.tar.bz2")
md5sums=('ec9cf26552582e4f106e97b0104ffc9c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
