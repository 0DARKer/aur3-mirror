# Maintainer: Andrzej Boreczko <0rion@wp.pl>
# Contributor: Andrzej Boreczko <0rion@wp.pl>

pkgname=ulogd2
pkgver=2.0.0beta4
pkgrel=3
pkgdesc="Userspace Packet Logging for netfilter"
arch=(i686 x86_64)
url="http://www.netfilter.org/projects/ulogd/index.html"
license=('GPL')
depends=('libnetfilter_conntrack>=0.0.95' 'libnetfilter_log>=1.0.0' 'libnfnetlink')
optdepends=('ulogd2_output_mysql: MySQL output' 'ulogd2_output_pgsql: PostgreSQL output' \
            'ulogd2_output_sqlite3: Sqlite3 output' 'ulogd2_output_pcap: libpcap-style logfiles output')
conflicts=('ulogd')
backup=('etc/ulogd.conf')
source=("http://www.netfilter.org/projects/ulogd/files/ulogd-${pkgver}.tar.bz2" 'ulogd' 'logrotate')
md5sums=('21143aecf8e39008d143a0fb0f742b0c' '99fd661b5e689a25e0d6323fb3591d9e' 'fe40b3073b7474a77e0b8b0bfd19ab63')

build() {
  export MAKEFLAGS="-j1"
  cd $startdir/src/ulogd-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --with-mysql \
    --with-pgsql --with-sqlite3 --with-pcap=/usr
  make || return 1
}

package() {
  cd $startdir/src/ulogd-${pkgver}
  make DESTDIR=$startdir/pkg install || return 1
  rm $startdir/pkg/usr/lib/ulogd/*.la
  rm -f $startdir/pkg/usr/lib/ulogd/ulogd_output_MYSQL.* $startdir/pkg/usr/lib/ulogd/ulogd_output_PGSQL.* \
  $startdir/pkg/usr/lib/ulogd/ulogd_output_SQLITE3.* $startdir/pkg/usr/lib/ulogd/ulogd_output_PCAP.*
  install -D -m755 $startdir/src/ulogd $startdir/pkg/etc/rc.d/ulogd
  install -m644 ulogd.conf $startdir/pkg/etc/ulogd.conf
  mkdir -p $startdir/pkg/usr/share/ulogd
  install -m644 doc/*.table $startdir/pkg/usr/share/ulogd
  install -m644 doc/*.sql $startdir/pkg/usr/share/ulogd
  install -D -m644 ${srcdir}/logrotate $pkgdir/etc/logrotate.d/ulogd
}
