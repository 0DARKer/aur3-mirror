pkgname=freemi
pkgver=0.5.0
pkgrel=2
pkgdesc="FreeMi UPnP Media Server est un serveur UPnP audio/vidÃ©o pour la FreeBox."
arch=('any')
url="http://freemiplayer.free.fr/"
license=('Apache License')
depends=('mono>=2.6.7')
source=(http://freemiplayer.free.fr/download/freemiupnp_binaries.zip)
md5sums=('a82426f0e955acb10ca30a6df772e667')

build() {
    cd "${srcdir}"
    rm freemiupnp_binaries.zip
}

package() {
    cd "${pkgdir}"
    
    mkdir -p usr/share/applications
    cp ../freemi.desktop usr/share/applications
    
    mkdir -p opt
    cp -r "${srcdir}" opt/FreeMi
}

