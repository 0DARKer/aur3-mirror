pkgname=freemi
pkgver=2.0.8
pkgrel=1
pkgdesc="FreeMi UPnP Media Server est un serveur UPnP audio/vid√©o pour la FreeBox."
arch=('any')
url="http://freemiupnp.fr"
license=('Apache')
depends=('mono')
source=(http://freemiupnp.fr/download/FreeMiMono.zip FreeMi.desktop FreeMi.png)
md5sums=('54cbba661bf244d1021cd87b75b1c2ff'
         '167c6b9936820853e125ceb507cb5a77'
         '911c71f4a6b320f605f6b8915e6beee0')

package() {
    cd "${srcdir}"
    
    install -D -m644 FreeMi.desktop "${pkgdir}/usr/share/applications/FreeMi.desktop"
    install -D -m644 FreeMi.png "${pkgdir}/opt/FreeMi/FreeMi.png"
    
    rm FreeMi.desktop
    rm FreeMiMono.zip
    rm FreeMi.png
    cp -R . "${pkgdir}/opt/FreeMi"
}
