pkgname=liboptreader-svn
pkgver=11
pkgrel=1
pkgdesc="A command line argument parser"
arch=('i686' 'x86_64')
url="http://code.google.com/p/liboptreader/"
license=('LGPL')
depends=()
makedepends=('gcc' 'subversion' 'cmake')
options=()
conflicts=('liboptreader')
provides=('liboptreader')
source=()
md5sums=()

_svntrunk=https://liboptreader.googlecode.com/svn/trunk/
_svnmod=liboptreader

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd liboptreader && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir liboptreader-build
	cd liboptreader-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/liboptreader
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/liboptreader-build

}
