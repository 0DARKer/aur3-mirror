# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfdesktop-devel
pkgver=4.7.5
pkgrel=1
pkgdesc="A desktop manager for Xfce (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('garcon-devel' 'thunar-devel' 'hicolor-icon-theme' 'gtk2' 'glib2' 'libxfce4ui-devel' 'libxfce4util-devel' 'libwnck' 'xfconf-devel' 'dbus-glib' 'exo-devel' 'libnotify')
makedepends=('xfce4-panel-devel' 'pkgconfig' 'intltool' 'xfce4-dev-tools-devel')
conflictss=('xfdesktop' 'xfdesktop-git')
replaces=('xfdesktop' 'xfdesktop-git')
options=('!libtool')
install=xfdesktop.install
source=(http://archive.xfce.org/src/xfce/xfdesktop/4.7/xfdesktop-${pkgver}.tar.bz2)
md5sums=('ae6c2b1d0f43a294bf409ec0332352a4')

build() {
  cd ${srcdir}/xfdesktop-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static --with-x --enable-notifications \
    --enable-thunarx --enable-gio-unix --enable-exo
  make
}

package() {
	cd ${srcdir}/xfdesktop-${pkgver}
	make DESTDIR=${pkgdir} install
}
