# Maintainer: Anton Jongsma <anton@felrood.nl>
pkgname=ccbuild
pkgver=2.0.2
pkgrel=1
pkgdesc="Source scanning build utility for C++"
arch=('i686' 'x86_64')
url="http://www.logfish.net/pr/ccbuild/downloads/"
license=('GPL')
depends=('libbobcat' 'gnutls')
makedepends=('boost')
source=("http://www.logfish.net/pr/ccbuild/downloads/ccbuild-${pkgver}.tar.gz" "configure.in.patch")

build() {
  #patch < configure.in.patch
  cd ${srcdir}/${pkgname}-${pkgver}
  patch < ../../configure.in.patch
  ./configure --prefix=/usr
  make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}

md5sums=('a076d08dae01cce670235af110e49b7f'
	 '39007ac1d1ab917bae07650b5a1e5536')
