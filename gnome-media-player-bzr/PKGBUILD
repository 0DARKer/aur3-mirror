# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=gnome-media-player-bzr
pkgver=96
pkgrel=1
pkgdesc="Simple media player for GNOME that supports vlc, xine-lib and gstreamer."
url="https://launchpad.net/gnome-media-player"
license="GPL"
arch=('i686' 'x86_64')
depends=('vlc')
makedepends=('bzr' 'intltool' 'xine-lib')
optdepends=('gstreamer0.10-base')
conflicts=('gnome-media-player')

_bzrtrunk=lp:gnome-media-player
_bzrmod=gnome-media-player

build() {

  bzr branch lp:$_bzrmod
  cd ./$_bzrmod
  ./autogen.sh
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
  mv -t $pkgdir/usr/share $pkgdir/usr/doc
}
