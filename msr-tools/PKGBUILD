pkgname=msr-tools
pkgver=1.3
pkgrel=3
pkgdesc="Utilities allowing to read and write CPU model-specific registers (MSR)"
arch=('i686' 'x86_64')
url="https://01.org/msr-tools"
license=('GPL')
# I put the tar.gz version of the official msr-tools 1.3 into my copy.com account
source="https://copy.com/QmDzY8bhxaQW"

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make || return 1
  mkdir -p $pkgdir/usr/sbin/
  cp rdmsr wrmsr $pkgdir/usr/sbin/
}

md5sums=('e0ebb7211dda173eb1b34e78ec96c51b')

