
pkgname=fileid
pkgver=75
pkgrel=1
pkgdesc="File type identifier. It gives the file type. It can identify using its data or its name."
arch=('i686' 'x86_64')
url="http://code.google.com/p/fileid/"
license=('LGPL')
depends=('libfsaction' 'libreaddata')
makedepends=('gcc' 'subversion' 'cmake' 're2c' 'libfsaction' 'libreaddata' 'liboptreader')
options=()
conflicts=('fileid' 'libfileid')
provides=('fileid' 'libfileid')
source=()
md5sums=()

_svntrunk=https://fileid.googlecode.com/svn/trunk/
_svnmod=fileid

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd fileid && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir fileid-build
	cd fileid-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/fileid
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/fileid-build

}
