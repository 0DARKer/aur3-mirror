pkgname=cairo-dock-plugins
_pkgname=cairo-dock-plug-ins
pkgver=2.1.3
pkgrel=1
subversion=9
pkgdesc="Plugins for cairo-dock"
url="https://launchpad.net/cairo-dock"
license="GPL"
arch=('i686' 'x86_64')
depends=('cairo-dock'=$pkgver 'libxxf86vm' 'vte' 'alsa-lib')
makedepends=('autoconf' 'automake' 'intltool' 'pkgconfig' 'libtool')
options=('!libtool')

source=(http://launchpad.net/$_pkgname/2.1/$pkgver/+download/$pkgname-$pkgver-$subversion.tar.gz)

md5sums=('80dd8c3870c6e1e80a0acfbfc8430c8c')

build() {
  cd $srcdir/$_pkgname-$pkgver-$subversion

  autoreconf -isvf ||return 1
  ./configure --prefix=/usr || return 1
  # Available options:
  #--disable-old-gnome-integration \ # Disable Gnome<2.22 integration (default=enabled)
  #--disable-gnome-integration \ # Disable Gnome>=2.22 integration (default=enabled)
  #--disable-xfce-integration \ # Disable XFCE integration (default=enabled)
  #--disable-alsa-mixer \ # Disable Alsa-Mixer applet (default=enabled)
  #--disable-terminal \ # Disable Terminal applet (default=enabled)
  #--disable-powermanager \ # Disable PowerManager applet (default=enabled)
  #--disable-wifi \ # Disable Wifi applet (default=enabled)
  #--disable-tomboy \ # Disable Tomboy applet (default=enabled)
  #--disable-rhythmbox \ # Disable Rhythmbox applet (default=enabled)
  #--disable-nvidia\ # Disable nVidia applet (default=enabled)
  #--disable-compiz-icon \ # Disable Compiz-Icon applet (default=enabled)
  #--disable-xgamma \ # Disable Xgamma applet (default=enabled)
  #--disable-gmenu \ # Disable GMenu applet (default=enabled)
  #--enable-gio-in-gmenu \ # Use gio in GMenu (default=disabled)
  #--enable-mail \ # Enable Mail applet (default=disabled)
  #--disable-weblets \ # Disable Weblets applet (default=enabled)
  #--disable-exif \ # for auto-rotating pictures in Slider (default=enabled)
  #--disable-keyboard-indicator \ # Disnable keyboard-indicator applet (default=enabled)
  make ||return 1
  make install DESTDIR=$pkgdir ||return 1
}

