# Maintainer: Hilton Medeiros <medeiros.hilton AT gmail DOT com>

pkgname=glibc-doc
pkgver=2.12.2
pkgrel=1
pkgdesc="GNU C Library: Documentation"
arch=('any')
url="http://gcc.gnu.org/libstdc++/"
license=('GPL')
options=('docs')
source=("http://www.gnu.org/s/libc/manual/html_node/libc-html_node.tar.gz"
        "http://www.gnu.org/s/libc/manual/pdf/libc.pdf")
md5sums=('b111445a8d9adb54ea516cb7497a7455'
         'f4f95dd3e22ef30165ac8d6ce837fd11')

build() {
  /bin/true
}

package() {
  install -d "$pkgdir/usr/share/doc/glibc"
  cp -r $srcdir/libc $pkgdir/usr/share/doc/glibc/html
  cp $srcdir/libc.pdf $pkgdir/usr/share/doc/glibc/
}
