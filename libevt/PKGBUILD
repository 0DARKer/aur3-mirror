# Maintainer: Jeremy M. <jskier at gmail dot com>
# Contributor: Jeremy M. <jskier at gmail dot com>

pkgname=libevt
pkgver=20130111
pkgrel=1
pkgdesc="Library and tooling to access the Windows Event Log (EVT) format"
url="https://code.google.com/p/libevt/"
license=('Lesser GPL')
arch=('i686' 'x86_64')
depends=('python')
options=()
source=(http://$pkgname.googlecode.com/files/${pkgname}-alpha-${pkgver}.tar.gz)
md5sums=('6ef9ba3041b24b37f5f82e4f1a2e3c75')

build() {
	  cd "$srcdir"/${pkgname}-${pkgver}
	    ./configure --prefix=/usr
	      make
}

package() {
	        cd "$srcdir"/${pkgname}-${pkgver}
		  make DESTDIR="${pkgdir}" install
}
