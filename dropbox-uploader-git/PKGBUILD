# Maintainer: FzerorubigD <Fzerorubigd {AT} GMail {DOT} com>

pkgname=dropbox-uploader-git
pkgver=20110630
pkgrel=1
pkgdesc="Dropbox Uploader is a BASH script which can be used to upload, download, list or delete files from Dropbox, an online file sharing, synchronization and backup service"
arch=('any')
url="http://www.andreafabrizi.it/?dropbox_uploader"
license=('unknown')
depends=('curl')
makedepends=('git')
source=()
md5sums=()

#install=$pkgname.install

_gitroot=https://github.com/andreafabrizi/Dropbox-Uploader.git
_gitname=Dropbox-Uploader

package() {
  cd $srcdir

  msg "Connecting to githup.com GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin && cd ..
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  cd $_gitname

  mkdir -p $pkgdir/usr/bin
  install -m 755 dropbox_uploader.sh "$pkgdir/usr/bin/dropbox_uploader.sh"
  install -m 755 dropShell.sh "$pkgdir/usr/bin/dropShell.sh"

  sed -i 's/^DU="\./DU="\/usr\/bin/g' "$pkgdir/usr/bin/dropShell.sh"
}