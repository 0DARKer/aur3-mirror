pkgname=wikipediafs
pkgver=0.3
pkgrel=1
pkgdesc="Mount Wikipedia/Mediawiki sites locally via FUSE"
arch=('i686' 'x86_64')
url="http://wikipediafs.sourceforge.net/"
license=('GPL')
depends=('fuse' 'python-fuse')
source=("http://downloads.sourceforge.net/wikipediafs/$pkgname-$pkgver.tar.gz")
md5sums=('34ff41974ff1ea74a428eaf68892716d')
build()
{
	cd $startdir/src/$pkgname-$pkgver
	python setup.py build
	install  -m755 -d $startdir/pkg/usr/lib/python2.5/wikipediafs/
	install -t $startdir/pkg/usr/lib/python2.5/wikipediafs/ -m644 -D build/lib/wikipediafs/*.py
	install -m755 -D build/scripts-2.5/mount.wikipediafs $startdir/pkg/sbin/mount.wikipediafs
	install -m644 -D doc/mount.wikipediafs.1.gz $startdir/pkg/usr/man/man1/mount.wikipediafs.1.gz
}


