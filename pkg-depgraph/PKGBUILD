# Contributor: scj <scj archlinux us>
pkgname=pkg-depgraph
pkgver=0.2
pkgrel=1
pkgdesc="A simple program to generate a dot dependency graph for a package"
arch=('i686')
url="http://bbs.archlinux.org/viewtopic.php?pid=511391#p511391"
license=('GPL')
groups=()
depends=('chicken' 'pacman')
makedepends=()
install=
source=(pkg-depgraph.scm.gz)
noextract=()
md5sums=('5c2d4c20ed3e702754e47caa8b1acd1b')

build() {
  cd $srcdir
  # change the line to 'csc -static-libs $pkgname.scm' to get rid of the chicken runtime dependency
  csc -O2 $pkgname.scm
  install -Dm 755 pkg-depgraph $pkgdir/usr/bin/pkg-depgraph
}

# vim:set ts=2 sw=2 et:
