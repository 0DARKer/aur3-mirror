
# Contributor: Paolo Herms

pkgname=ocamlgraph-withoutfindlib
pkgver=1.6
pkgrel=1
pkgdesc="Graph library for Objective Caml. Builds without findlib"
arch=('i686' 'x86_64')
url="http://ocamlgraph.lri.fr/"
license=('LGPL')
makedepends=('ocaml>=3.10' 'lablgtk2')
depends=('libgnomecanvas')
provides=('ocamlgraph')
conflicts=('ocamlgraph')
source=(http://ocamlgraph.lri.fr/download/ocamlgraph-$pkgver.tar.gz)

build() {
  cd "$srcdir/ocamlgraph-$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}

md5sums=('b66ad9942e5a3acddeeeaf69c09a0c26')
