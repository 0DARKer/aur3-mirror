# Maintainer: Paul Colomiets <pc@gafol.net>

pkgname=procboss
pkgver=0.2
pkgrel=1
pkgdesc="A process supervisor"
arch=('i686' 'x86_64')
url="http://github.com/tailhook/procboss"
license=('GPL')
depends=('coyaml')
makedepends=('coyaml>=0.3.7')
backup=("etc/bossd.yaml")
source=(https://github.com/downloads/tailhook/procboss/$pkgname-$pkgver.tar.gz)
md5sums=('601b01e483126992ae831d1517770e5b')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./waf configure --prefix=/usr
  ./waf build
}

package() {
  cd $srcdir/$pkgname-$pkgver
  ./waf install --destdir=$pkgdir
}
