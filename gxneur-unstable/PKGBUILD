pkgname=gxneur-unstable
pkgver=0.16.0+hg1132
pkgrel=1
pkgdesc="GTK frontend for XNeur"
url="http://www.xneur.ru"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libglade' "xneur-unstable>=${pkgver}" 'hicolor-icon-theme' 'gconf')
conflicts=('gxneur' 'xneur')
source=("https://launchpad.net/~andrew-crew-kuznetsov/+archive/xneur-unstable/+files/gxneur_0.16.0%2Bhg1132.orig.tar.gz")
install=${pkgname}.install

md5sums=('b671b8c866d89d01e17a1fe2218f26d9')

build() {
   cd $srcdir/gxneur-0.16.0

   ./configure --prefix=/usr
   make
}

package() {
   cd $srcdir/gxneur-0.16.0
   make DESTDIR=$pkgdir install
}
