pkgname=gxneur-unstable
pkgver=0.16.0+hg1108
pkgrel=5
pkgdesc="GTK frontend for XNeur"
url="http://www.xneur.ru"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libglade' "xneur-unstable>=${pkgver}" 'hicolor-icon-theme' 'gconf')
conflicts=('gxneur' 'xneur')
source=("https://launchpad.net/~andrew-crew-kuznetsov/+archive/xneur-unstable/+files/gxneur_0.16.0%2Bhg1108.orig.tar.gz")
install=${pkgname}.install

md5sums=('0fc39ea617257b3e70f1a01dfa502c58')

build() {
   cd $srcdir/gxneur-0.16.0

   ./configure --prefix=/usr
   make
}

package() {
   cd $srcdir/gxneur-0.16.0
   make DESTDIR=${startdir}/pkg install
}
