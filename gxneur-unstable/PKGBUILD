pkgname=gxneur-unstable
pkgver=0.16.0+hg1182
pkgrel=1
pkgdesc="GTK frontend for XNeur"
url="http://www.xneur.ru"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libglade' "xneur-unstable>=${pkgver}" 'hicolor-icon-theme' 'gconf')
conflicts=('gxneur')
install=${pkgname}.install
source=("https://launchpad.net/~andrew-crew-kuznetsov/+archive/xneur-unstable/+files/gxneur_0.16.0%2Bhg1182.orig.tar.gz")

md5sums=('730e69129bc00534377ff91fd56f7986')

build() {
   cd $srcdir/gxneur-0.16.0

   ./configure --prefix=/usr
   make
}

package() {
   cd $srcdir/gxneur-0.16.0
   make DESTDIR=$pkgdir install
}
