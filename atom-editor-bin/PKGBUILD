# Maintainer: Tom Bu <tom.bu AT members.fsf.org>
# Contributer: John Reese <john@noswap.com>
# Upstream URL: https://github.com/atom/atom

pkgname=atom-editor-bin
pkgver=0.99.0_git20140525
_pkgver="0.99.0~git20140525"
pkgrel=2
pkgdesc="Text editor from Github - Precompiled binary from WebUpd8"
arch=('x86_64')
url="https://github.com/atom/atom"
license=('MIT')
options=(!strip)
depends=('alsa-lib' 'gconf' 'gtk2' 'libgcrypt15' 'libgnome-keyring' 'libnotify' 'libudev.so.0' 'libxtst' 'nodejs' 'nss' 'python2')
conflicts=('atom-editor' 'atom-editor-git')
source=("https://launchpad.net/~webupd8team/+archive/atom/+files/atom_0.99.0%7Egit20140525%7Ewebupd8%7Esaucy0_amd64.deb")
sha256sums=('c7ee710a10d029f3aa9bf1ff83371080b342509f298990a6f80f6022ed8cc244')

package() {
	bsdtar xf data.tar.gz
	cd opt/atom
	bsdtar xf "atom-linux64-${_pkgver}.tar.xz"
	rm "atom-linux64-${_pkgver}.tar.xz"
	cd ${srcdir}
	chmod -R g-w usr opt
	mv usr ${pkgdir}
	mv opt ${pkgdir}
}

# vim:set ts=2 sw=2 et:
