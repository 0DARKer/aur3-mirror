# Contributor: Tai Chi Minh Ralph Eastwood <tcmreastwood@gmail.com>
pkgname=libpgf
pkgver=6.12.24
pkgrel=1
pkgdesc="A new progressive file format for lossy and lossless image compression."
arch=('i686' 'x86_64')
url="http://www.libpgf.org"
depends=('gcc-libs')
license=('GPL')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver-latest/$pkgname-$pkgver-src.tar.gz")
md5sums=('49ae25a63804273f0c6875f477b5f6d2')

build() {
  cd "$srcdir"/$pkgname
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"/$pkgname
  make install PREFIX=/usr DESTDIR=$pkgdir
}
