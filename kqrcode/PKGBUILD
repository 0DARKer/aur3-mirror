pkgname=kqrcode
pkgver=0.3.1
pkgrel=1
pkgdesc="A little program that is meant to encode/decode data to/from QR codes."
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=143544"
license="GPL"
depends=('kdelibs' 'qrencode' 'zbar-qt')
source=(http://sourceforge.net/projects/kqrcode/files/${pkgname}-${pkgver}.tar.gz/download)
md5sums=('4dc4e5cb37160a9a943fed0172e0fd7b')

build() {
  cd ${srcdir}
  rm -rf ${srcdir}/build
  mkdir -p ${srcdir}/build
  cd ${srcdir}/build || return 1

  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package(){
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
