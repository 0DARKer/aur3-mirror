# Contributor: G_Syme <demichan(at)mail(dot)upb(dot)de>
pkgname=pyawale
pkgver=0.3.8
pkgrel=1
pkgdesc="Version of Awale, a member of the mancala family of board games"
arch=('i686' 'x86_64')
url="https://gna.org/projects/pyawale/"
license=('GPL2')
depends=('python-pygame')
#makedepends=('docutils')
source=(http://download.gna.org/$pkgname/$pkgname-$pkgver.tar.gz
        $pkgname.desktop)
md5sums=('2586e160dae501cf500dcc88b7819e67'
         'f8f7a86f913793f77a4c330c321df6db')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root="$pkgdir" --prefix=/usr || return 1
  install -D -m644 ../$pkgname.desktop \
      "$pkgdir"/usr/share/applications/$pkgname.desktop 
}
