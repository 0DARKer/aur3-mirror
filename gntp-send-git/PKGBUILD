# Maintainer/Contributor: Prurigro

_pkgname=gntp-send
pkgname=${_pkgname}-git
pkgver=8241d46
pkgrel=1
pkgdesc="command line program that send to growl using GNTP protocol."
url="https://github.com/mattn/${_pkgname}"
license="BSD"
makedepends=('git')
arch=('i686' 'x86_64')

source=("git://github.com/mattn/${_pkgname}.git#branch=master")
sha1sums=('SKIP')

pkgver() {
    cd "${srcdir}/${_pkgname}"
    git describe --always | sed 's|-|.|g;s|[^\.]*\.||;s|\.[^\.]*$||'
}

build() {
    cd "${srcdir}"/${_pkgname}
    ./autogen.sh
    ./configure --prefix=/usr
    make -f Makefile
}

package() {
    cd "${srcdir}"/${_pkgname}
    make DESTDIR="${pkgdir}" install
}
