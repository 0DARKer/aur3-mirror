# Maintainer: Joel Almeida <aullidolunar at gmail dot com>

_contentId=168118
_contentName=StylishDark

pkgname=gtk3-stylishdark-theme
pkgver=0.1
pkgrel=1
pkgdesc="Theme get inspired by the dark default theme from WPS"
arch=('any')
url=("http://gnome-look.org/content/show.php/${_contentName}?content=${_contentId}")
license=('GPL')
depends=('gtk3>=3.12' 'gtk-engine-murrine')
source=("http://gnome-look.org/CONTENT/content-files/${_contentId}-${_contentName}.tar.bz2")
md5sums=('278947febee783ca6d19efe912a00f26')

build() {
	cd "$srcdir"
}

package() {
	cd "$srcdir/${_contentName}-3.12"
	install -dm755 "$pkgdir/usr/share/themes/${_contentName}"
	cp --no-preserve=all -R . "$pkgdir/usr/share/themes/${_contentName}"
}
