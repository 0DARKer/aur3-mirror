# Contributor: zoulnix <http://goo.gl/HQaP>
pkgname=opencity-svn
pkgver=449
pkgrel=2
pkgdesc="A full 3D city simulator game project."
arch=('i686' 'x86_64')
url="http://opencity.info/"
license=('GPL')
depends=('mesa' 'sdl_image' 'sdl_mixer' 'sdl_net')
makedepends=('autoconf' 'automake' 'gcc' 'libtool' 'make' 'pkg-config' 'subversion')
options=('!libtool')
provides=('opencity')
conflicts=('opencity')
source=()
md5sums=('')

_svnmod="opencity"
_svntrunk="https://opencity.svn.sourceforge.net/svnroot/opencity/trunk/opencity"

build() { 
  cd ${srcdir}

  #####
  msg "Getting sources..."
  if [ -d ${_svnmod}/.svn ]; then
    cd ${_svnmod} && svn up -r ${pkgver}
  else
    svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
    cd ${_svnmod}
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  #####

  # Generating build system
  ./autogen.sh || return 1

  export LDFLAGS="${LDFLAGS//-Wl,--hash-style=gnu -Wl,--as-needed}"
  ./configure --prefix=/usr \
	      --sysconfdir=/etc \
	      --localstatedir=/var \
	      --disable-static

  make || return 1
}

package() {
  cd ${srcdir}/${_svnmod}

  make DESTDIR=${pkgdir} install || return 1

  # Removing unnecessary stuff
  find ${pkgdir} -depth -type d -name ".svn" -exec rm -rf {} \;
}
