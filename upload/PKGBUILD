pkgname=openvpn-easy-rsa
pkgver=2.0_rc1
pkgrel=1
pkgdesc="A small RSA key management package that comes with OpenVPN"
url="http://openvpn.net/"
license="GPL"
depends=(bash openssl)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://openvpn.net/release/openvpn-2.0.7.tar.gz)
md5sums=('93528233f1f6d02fc18e2c00f82e0aca')

build() {
  cd $startdir/src/openvpn-2.0.7/easy-rsa
  mkdir -p $startdir/pkg/opt/easy-rsa
  cp -a 2.0/* $startdir/pkg/opt/easy-rsa
}

