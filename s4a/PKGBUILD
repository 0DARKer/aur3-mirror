# Maintainer: Isaac Lleida, isaky <isaky.player@gmail.com>

pkgname=s4a
pkgver=1.5
pkgrel=1
pkgdesc="Description: A customized version of Scratch prepared to interact with Arduino boards.
	 See http://seaside.citilab.eu/scratch/arduino"
arch=('i686' 'x86_64')
url="http://seaside.citilab.eu"
license=('GPL')
depends=('glibc' 'cairo' 'glib2' 'pango' 'v4l-utils' 'pulseaudio')
source=("${url}/S4A15.deb"
    	's4a.install'
        'rmscript'
	'README')
install=${pkgname}.install

package() {
	cd "$srcdir/"

	ar vx ./S4A15.deb
	tar -zxvf ./data.tar.gz

	mv ./usr/lib/s4a/ ./usr/share/
	rmdir ./usr/lib/
	sed -i 's/lib/share/g' ./usr/bin/s4a

	cp -r ./usr /
	cp "$startdir/rmscript" "/usr/share/s4a/"

	cat "../README"
}

md5sums=('3db96b683afcaf4ebc1afd37dc4e8197'
         'cbcb0d758e562c55d8ec4d106ecba2c6'
         '79c9bf139bd9a9ae01e97f9c4a483338'
	 '9fa6eda0c161daf7bdcc9abecf90b470')
