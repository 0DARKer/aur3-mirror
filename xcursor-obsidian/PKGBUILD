# Contributor: Max Pray a.k.a. Synthead <synthead@gmail.com>
pkgname=xcursor-obsidian
_pkgname=Obsidian
pkgver=1.0
pkgrel=1
pkgdesc="Obsidian cursor theme"
arch=(i686 x86_64)
url="http://www.gnome-look.org/content/show.php/Obsidian+Cursors?content=73135"
license=('GPL')
depends=()
source=(http://www.gnome-look.org/CONTENT/content-files/73135-$_pkgname.tar.bz2)
md5sums=('bfac15c02e4a7a7c7e0225a86a4c9bfc')

build() {
	cd $startdir/src/$_pkgname
	install -d -m755 $startdir/pkg/usr/share/icons/${_pkgname}/cursors/filesources
	install -D -m644 $startdir/src/${_pkgname}/index.theme \
					$startdir/pkg/usr/share/icons/${_pkgname}
	cd $startdir/src/${_pkgname}/cursors
	for i in * ; do
		install -D -m644 $i $startdir/pkg/usr/share/icons/${_pkgname}/cursors
	done
}
