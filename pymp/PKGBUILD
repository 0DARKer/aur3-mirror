pkgname=pymp
pkgver=1.1
pkgrel=2
url="http://jdolan.dyndns.org/trac/wiki/Pymp"
pkgdesc="PyGTK frontend for MPlayer"
depends=('mplayer' 'pygtk')
source=(http://jdolan.dyndns.org/jaydolan/files/${pkgname}-${pkgver}.tar.gz pymp.desktop)
arch=('i686' 'x86_64')
md5sums=('67a43ba4452e426d47e278e856fe3bfa' 'eb63f882bb403320989288c25bfe05da')
license=('GPL')

build() {
	cd $srcdir/$pkgname-$pkgver
	make || return 1
	make DESTDIR=$pkgdir PREFIX=/usr install
	install -D -m644 $srcdir/$pkgname.desktop \
        $pkgdir/usr/share/applications/$pkgname.desktop || return 1
}
