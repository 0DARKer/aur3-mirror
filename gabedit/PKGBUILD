pkgname=gabedit
pkgver=2.4.0
pkgrel=2
pkgdesc="A graphical user interface to computational chemistry packages like Gamess-US, Gaussian, Molcas, Molpro, MPQC, OpenMopac, PCGamess and Q-Chem "
arch=('i686' 'x86_64')
url="http://gabedit.sourceforge.net/"
license=('Custom')
depends=('gtkglext')
makedepends=()
provides=(gabedit)
conflicts=(gabedit)
replaces=(gabedit)
_pkgver=240
source=(http://prdownloads.sourceforge.net/gabedit/GabeditSrc$_pkgver.tar.gz)
md5sums=('2b012ceaacafffc92c5d677822df8002')

build() {
 mkdir -p $startdir/pkg/usr/bin 
 mkdir -p $startdir/pkg/usr/share/licenses/gabedit
 mkdir -p $startdir/pkg/usr/share/icons/gabedit
 mkdir -p $startdir/pkg/usr/share/applications/

 cd $startdir/src/GabeditSrc$_pkgver/
 LDFLAGS+=/lib/libm.so.6 make
 install -D -m655 $startdir/src/GabeditSrc$_pkgver/gabedit $startdir/pkg/usr/bin/
 install -D -m644 $startdir/src/GabeditSrc$_pkgver/License $startdir/pkg/usr/share/licenses/gabedit
 install -D -m644 $startdir/gabedit.desktop $startdir/pkg/usr/share/applications/
 install -D -m644 $startdir/src/GabeditSrc$_pkgver/icons/Gabedit48.png $startdir/pkg/usr/share/pixmaps/gabedit.png
 chmod -R 755 $startdir/pkg/usr/share/icons/gabedit
}
