# Contributor: Simon Lackerbauer <calypso@strpg.org> 
pkgname=mecab
pkgver=0.98
pkgrel=1
pkgdesc="Morphological Analysis Tool"
arch=('i686' 'x86_64')
url="http://mecab.sourceforge.net/"
license=('BSD' 'LGPL' 'GPL')
source=(http://surfnet.dl.sourceforge.net/sourceforge/mecab/$pkgname-$pkgver.tar.gz)
md5sums=('b3d8d79e35acf0ca178e8d885309f5fd')
sha1sums=('8977d7760638ec65132e1f9bfc66655ac761f964')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m644 $srcdir/$pkgname-$pkgver/COPYING \
    $pkgdir/usr/share/licenses/$pkgname/COPYING
  install -D -m644 $srcdir/$pkgname-$pkgver/BSD \
    $pkgdir/usr/share/licenses/$pkgname/BSD
}
