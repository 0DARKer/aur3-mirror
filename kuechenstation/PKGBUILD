pkgname=kuechenstation
pkgver=0.3
pkgrel=1
pkgdesc="A leightweight xmms2 console client written in python"
arch=('i686' 'x86_64')
url="http://kuechenstation.sourceforge.net/"
license=('GPL')
depends=('python' 'figlet' 'xmms2>=0.5DrLecter-4')
optdepends=('python-feedparser: podcast support')
source=('http://downloads.sourceforge.net/kuechenstation/kuechenstation_0.3-2.tar.gz?use_mirror=garr')
md5sums=('7439198ef1e8f22940051629a2743112')

build() {
	  cd $srcdir/$pkgname-$pkgver
	  ./setup.py build || return 1
	  ./setup.py install --root=$pkgdir || return 1
	}

