# $Id$

pkgname=hunspell-uk
pkgver=1.6.1
pkgrel=1
pkgdesc="Ukrainian hunspell dictionary"
provides=('hunspell-uk')
conflicts=('hunspell-uk')
replaces=('hunspell-uk')
arch=(any)
url="http://extensions.services.openoffice.org/project/dict-uk_UA"
license=('custom')
optdepends=('hunspell: the spell checking libraries and apps')
source=(http://extensions.services.openoffice.org/e-files/975/3/dict-uk_UA-1.6.1.oxt)

build() {
  /bin/true
}

package() {
  cd "$srcdir"/uk_UA
  install -dm755 ${pkgdir}/usr/share/hunspell
  install -m 644 uk_UA.dic uk_UA.aff $pkgdir/usr/share/hunspell

  # the symlinks
  install -dm755 ${pkgdir}/usr/share/myspell/dicts
  pushd $pkgdir/usr/share/myspell/dicts
    for file in $pkgdir/usr/share/hunspell/*; do
      ln -sv /usr/share/hunspell/$(basename $file) .
    done
  popd

  #docs
  install -dm755 ${pkgdir}/usr/share/doc/$pkgname
  install -m 644 README_uk_UA.txt $pkgdir/usr/share/doc/$pkgname
}

md5sums=('2436862501d01bfd0a7183a743df2dab')
