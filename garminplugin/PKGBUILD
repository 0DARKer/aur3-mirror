pkgname=garminplugin
pkgrel=1
pkgver=0.3.3
pkgdesc="Garmin Communicator Plugin for Linux"
arch=('i686' 'x86_64')
url="http://www.andreas-diesner.de/garminplugin/doku.php"
license=('GPL')
depends=("xulrunner" "garmintools" "tinyxml" "libusb")
source=(https://github.com/adiesner/GarminPlugin/tarball/V$pkgver)
md5sums=('e0d7d79b20b50d1e95b6ba3dbd6b3cc6')

build() {
  cd ${srcdir}/adiesner-GarminPlugin-f2ebb7f/src
  ./configure CXXFLAGS="-fPIC -g -O2" CFLAGS="-g -O2 -fPIC"
  make 
}

package() {
  mkdir -p "$pkgdir/usr/lib/mozilla/plugins/"
  mv -v "${srcdir}/adiesner-GarminPlugin-f2ebb7f/src/npGarminPlugin.so" "$pkgdir/usr/lib/mozilla/plugins/"

}
