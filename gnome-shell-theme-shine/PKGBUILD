# Author:  satya164  <http://satya164.deviantart.com/>
# Maintainer: David Runge <david[d]runge[a]frqrec[d]com>
pkgname=gnome-shell-theme-shine
pkgver=20120514
pkgrel=1
pkgdesc="A transparant gnome-shell theme with smooth effects and a squarish look, by satya164. " 
arch=('any')
url="http://satya164.deviantart.com/art/Gnome-Shell-Shine-265815777"
license=('GPL')
depends=('gnome-shell>=3.2')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell')
source=("http://www.deviantart.com/download/265815777/gnome_shell___shine_by_satya164-d4e9crl.zip")
md5sums=('904c30d1d283df6b765950a3573b3bdc')

package() {
  msg "Installing theme to /usr/share/themes/Shine"
  find ${srcdir} -name "preview*" -type f -delete -print
  find Shine*/ -not -name "*~" -type f \
      -exec install -vDm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}
# vim:set ts=2 sw=2 et:
