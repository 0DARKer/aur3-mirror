# Maintainer: josephgbr <rafael.f.f1 at gmail dot com>

_pkgbase=libmp4v2
pkgname=lib32-$_pkgbase
pkgver=1.9.1
pkgrel=3
pkgdesc="MPEG-4 library (32 bit)"
arch=('x86_64')
url="http://code.google.com/p/mp4v2/"
license=('LGPL')
depends=("${_pkgbase}")
makedepends=('gcc-multilib')
options=('!libtool')
#source=("http://mp4v2.googlecode.com/files/mp4v2-${pkgver}.tar.bz2")
source=("http://mp4v2.googlecode.com/files/mp4v2-trunk-r479.tar.bz2")
md5sums=('9ffd774fa88ad993e28236551511850b')

build() {
  export CC='gcc -m32'
  export CXX='g++ -m32'
  #cd mp4v2-${pkgver}
  cd mp4v2-trunk-r479
  ./configure --prefix=/usr --libdir=/usr/lib32
  make
}

package() {
  #cd mp4v2-${pkgver}
  cd mp4v2-trunk-r479
  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/usr/{bin,include,share}
}
