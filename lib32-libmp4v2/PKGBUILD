pkgname=lib32-libmp4v2
pkgver=1.9.1
pkgrel32=1
pkgrel=1
pkgdesc="MPEG-4 library and tools from mpeg4ip"
url="http://mpeg4ip.sourceforge.net/"
license=()
arch=(x86_64)
depends=('lib32-gcc-libs')
groups=lib32
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
md5sums=('4c3a5cbc47285a0f12acb4923524f06d')

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr/lib
  cp -rPf ${startdir}/src/usr/lib/*.so* ${startdir}/pkg/opt/lib32/usr/lib
}
