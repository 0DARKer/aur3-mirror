_pkgbasename=libmp4v2
pkgname=lib32-$_pkgbasename
pkgver=1.9.1
pkgrel=2
pkgdesc="MPEG-4 library (32 bit)"
arch=('x86_64')
url="http://code.google.com/p/mp4v2/"
license=('LGPL')
depends=("$_pkgbasename")
makedepends=('gcc-multilib')
options=('!libtool')
source=(http://mp4v2.googlecode.com/files/mp4v2-${pkgver}.tar.bz2)
md5sums=('986701929ef15b03155ac4fb16444797')

build() {
  cd ${srcdir}/mp4v2-${pkgver}
  ./configure --prefix=/usr --libdir=/usr/lib32 CXX='g++ -m32' #CC='gcc -m32'
  make
}

package() {
  cd ${srcdir}/mp4v2-${pkgver}
  make DESTDIR=${pkgdir} install
  # Cleanup for a lib32 package
  rm -rf ${pkgdir}/usr/{bin,include,share,lib32/*.a}
}
