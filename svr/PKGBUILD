pkgname=svr
pkgver=0.2.0beta3
pkgrel=1
pkgdesc="Application for renaming videos and subtitles"
arch=('i686' 'x86_64')
url="http://karoljkocmaros.blogspot.com/p/subtitle-video-renamer.html"
license=('LGPL')
install=${pkgname}.install
depends=('qt>=4.8.1')
source=('http://master.dl.sourceforge.net/project/subvidrenamer/source/0.2.0%20beta%203/svr.zip'
	'svr.desktop'
	'svr.png')
sha256sums=('873c1ed777076770339a6b29d3d0bb2c60500a48d5a8b1501917cd6393f6b173'
	    '6ca719fc75c5e80dfdaa4b6a7d5be5bd7c1858dfaf7955b106b1c5a9dba80ab0'
	    '7a69ed681407d1fbb8a271b3ae29c8a5815e28b56a6816675c8e18ec6306186f')
build() {
 cd $srcdir/trunk
    qmake || return 1
    make || return 1    
    install -Dm755 svr "$pkgdir/usr/bin/svr"
    install -Dm644 $startdir/svr.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
    install -Dm644 $startdir/svr.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"       
    }
