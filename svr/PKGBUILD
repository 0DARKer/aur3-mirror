pkgname=svr
pkgver=0.2.0beta1
pkgrel=2
pkgdesc="Application for renaming videos and subtitles"
arch=('i686' 'x86_64')
url="http://karoljkocmaros.blogspot.com/p/subtitle-video-renamer.html"
license=('LGPL')
install=${pkgname}.install
depends=('qt>=4.8.1')
source=('http://master.dl.sourceforge.net/project/subvidrenamer/source/0.2.0%20beta%201/svr.zip'
	'svr.desktop'
	'svr.png')
sha256sums=('c6c38087485f013e12ad6b53d8301c17306e97d45bf12aa0d22e46275b4b4084'
	    '186235e9a69271cb370ec1cde7a62bd028d62e54eb3be1b8629e796aa67af63a'
	    '7a69ed681407d1fbb8a271b3ae29c8a5815e28b56a6816675c8e18ec6306186f')
build() {
 cd $srcdir/trunk
    qmake || return 1
    make || return 1    
    install -Dm755 svr "$pkgdir/usr/bin/svr"
    install -Dm644 $startdir/svr.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
    install -Dm644 $startdir/svr.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"       
    }
