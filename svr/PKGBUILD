pkgname=svr
pkgver=0.2.1
pkgrel=2
pkgdesc="Application for renaming videos and subtitles"
arch=('i686' 'x86_64')
url="http://karoljkocmaros.blogspot.com/p/subtitle-video-renamer.html"
license=('LGPL')
install=${pkgname}.install
depends=('qt4>=4.8.1')
source=('http://master.dl.sourceforge.net/project/subvidrenamer/source/0.2.1/svr.zip'
	'svr.desktop'
	'svr.png')
sha256sums=('c79c5c0dba0d5a2ef575a2fc3a7552098df1f5f5bd58e3c0216b96f9d71af8e0'
	    '2c55b6032996b0f92cbe58c3448f334cffae81d2a024812c4d6417751095c5ae'
	    '7a69ed681407d1fbb8a271b3ae29c8a5815e28b56a6816675c8e18ec6306186f')
build() {
 cd $srcdir/trunk
    qmake || return 1
    make || return 1    
    install -Dm755 svr "$pkgdir/usr/bin/svr"
    install -Dm644 $startdir/svr.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
    install -Dm644 $startdir/svr.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"       
    }
