#Maintainer: Kočmaroš Karolj <karlosmunjos at gmail dot com>

pkgname=svr
pkgver=0.4.0
pkgrel=1
pkgdesc="Application for renaming videos and subtitles"
arch=('i686' 'x86_64')
url="http://karoljkocmaros.blogspot.com/p/subtitle-video-renamer.html"
license=('LGPL')
install=${pkgname}.install
depends=('qt4>=4.8.4')
source=('http://master.dl.sourceforge.net/project/subvidrenamer/source/${pkgver}/svr.zip')
sha256sums=('0e280a96a2a87a95fade741dae68b0fbfafecde64cd4219f7d3df83ada20c0be')

build() 
{
    cd $srcdir/trunk
    qmake-qt4 || return 1
    make || return 1    
}

package()
{
    cd $srcdir/trunk
    make INSTALL_ROOT="${pkgdir}" install
}
