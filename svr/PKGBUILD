pkgname=svr
pkgver=0.2.2
pkgrel=2
pkgdesc="Application for renaming videos and subtitles"
arch=('i686' 'x86_64')
url="http://karoljkocmaros.blogspot.com/p/subtitle-video-renamer.html"
license=('LGPL')
install=${pkgname}.install
depends=('qt4>=4.8.4')
source=('http://master.dl.sourceforge.net/project/subvidrenamer/source/0.2.2/svr.zip'
	'svr.desktop'
	'svr.png')
sha256sums=('29372ee5d4c7a382bb57cbcd20e2a7a309175f3b538ac34bee40f8c20d98cb59'
	    'c5528de54bef9c5cb9096e11fd60ada33ddef745f6b470d5b723c0725d0d46e1'
	    '7a69ed681407d1fbb8a271b3ae29c8a5815e28b56a6816675c8e18ec6306186f')
build() {
 cd $srcdir/trunk
    qmake-qt4 || return 1
    make || return 1    
    install -Dm755 svr "$pkgdir/usr/bin/svr"
    install -Dm644 $startdir/svr.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
    install -Dm644 $startdir/svr.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"       
    }
