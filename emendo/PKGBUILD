pkgname=emendo
pkgver=188.2a6b40a92a72
pkgrel=1
pkgdesc="Text editor with syntax highlighting. Program is written in Vala/GTK2."
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPL')
depends=('gtksourceview2' 'vte' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('vala' 'mercurial')
source=(alphaos::hg+https://bitbucket.org/simargl/alphaos)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo "$(hg identify -n).$(hg identify -i)"
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
