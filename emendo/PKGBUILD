pkgname=emendo
pkgver=7.ecda512
pkgrel=1
pkgdesc="Text editor with syntax highlighting. Program is written in Vala/GTK3."
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPL')
depends=('gtksourceview3' 'vte3' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('vala' 'git')
source=(alphaos::git+https://github.com/simargl/alphaos)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
