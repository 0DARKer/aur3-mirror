pkgname=emendo
pkgver=hg_latest
pkgrel=3
pkgdesc="Text editor with syntax highlighting"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl/emendo"
license=('GPL')
makedepends=('vala')
depends=('gtksourceview3')
source=(https://bitbucket.org/simargl/$pkgname/get/tip.tar.gz)
md5sums=('SKIP')
options=(!strip)

package() {
  cd "$srcdir"/*-$pkgname-*
  make DESTDIR="$pkgdir/" install
}