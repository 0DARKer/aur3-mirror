# Maintainer: nyyu <valentin.oudin [at] gmail [dot] com>

pkgname=heraia
pkgver=0.1.7
pkgrel=1
pkgdesc="Edit all sorts of files viewing them in an hexadecimal manner"
arch=('i686' 'x86_64')
url='http://gna.org/projects/heraia/'
license=('GPL')
depends=('ghex' 'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool' )
options=('!libtool')
install=heraia.install
source=(http://download.gna.org/$pkgname/releases/$pkgname-$pkgver.tar.gz)
sha256sums=('4b008b99c54571569f5c7f2cfa105818e63da64289df7406010c67c15ae59137')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./autogen.sh
    ./configure --prefix=/usr --disable-static
    make -s
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}
