pkgname=aspell-pt-ao
pkgver=20121014
pkgrel=1
pkgdesc="Portuguese dictionary for aspell (segundo Acordo Ortogr√°fico de 1990)"
depends=('aspell')
provides=('aspell-pt')
conflicts=('aspell-pt')
url="http://natura.di.uminho.pt/wiki/doku.php?id=dicionarios:main"
license=('GPL2')
arch=('i686' 'x86_64')
source=(http://natura.di.uminho.pt/download/sources/Dictionaries/aspell6/aspell6.pt-$pkgver.tar.bz2)
md5sums=('b64334b31e1ecf61aa8e7600308f4406')

build() {
  cd $srcdir/aspell6-pt_PT-$pkgver-0
  ./configure
  make || return 1
}

package() {
  cd $srcdir/aspell6-pt_PT-$pkgver-0
  make DESTDIR=$pkgdir install
}
