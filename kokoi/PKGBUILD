# Maintainer: Alessandro Di Martino <aledimax@gmail.com>

pkgname=kokoi
pkgver=0.1.2
pkgrel=1
pkgdesc="Universal markup file watcher/previewer."
arch=('any')
url="https://github.com/zeis/kokoi"
license=('MIT')
depends=('nodejs' 'markdown')
makedepends=('gcc' 'make')
provides=('kokoi')

package() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install --user root -g --prefix "$pkgdir/usr" $pkgname@$pkgver
}
