pkgname=riak-bin
_pkgver_maj=1.3
pkgver=1.3.1
pkgrel=1
pkgdesc='NoSQL database engine providing decentralized key-value store, flexible map/reduce engine and HTTP/JSON query interface. Binary version from Debian.'
arch=('x86_64')
license=('APACHE')
url='http://riak.basho.com/'
depends=('erlang' 'expect' 'openssl098')
conflicts=('riak')
provides=('riak')
backup=('etc/riak/app.config' 'etc/riak/vm.args')
options=('!emptydirs')
install='riak.install'
source=("http://s3.amazonaws.com/downloads.basho.com/riak/${_pkgver_maj}/${pkgver}/debian/6/riak_${pkgver}-1_amd64.deb"
        'riak.service')
md5sums=('6bc5afe8caaebe76a5dc5383743175c4'
         'e6e26aa4cf5cae7b42c4ec0dd11e1db3')

prepare() {
  cd ${srcdir}

  msg2 'Extracting Debian package...'
  ar x riak_${pkgver}-1_amd64.deb
}

package() {
  cd ${pkgdir}
  bsdtar -xf ${srcdir}/data.tar.gz
  rm -rf var/run

  install -Dm644 ${srcdir}/riak.service ${pkgdir}/usr/lib/systemd/system/riak.service
}
