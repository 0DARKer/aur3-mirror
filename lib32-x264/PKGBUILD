# Maintainer : GordonGR <gordongr@freemail.gr>

pkgname=lib32-x264
_pkgname=x264
pkgver=20130702
pkgrel=2
pkgdesc="Free library for encoding H264/AVC video streams, lib32"
arch=('x86_64')
url="http://www.videolan.org/developers/x264.html"
license=('GPL')
depends=("${_pkgname}")
source=("ftp://ftp.archlinux.org/extra/os/i686/${_pkgname}-${pkgver}-${pkgrel}-i686.pkg.tar.xz")
md5sums=('ba2b23c79ec6d231281a3ad70a19b30f')



package() {
cd ${srcdir}
  
install -dm755 $pkgdir/usr/lib32/
cp -R $srcdir/usr/lib/*.so* $pkgdir/usr/lib32/
install -dm755 $pkgdir/usr/lib32/pkgconfig
cp -R $srcdir/usr/lib/pkgconfig/* $pkgdir/usr/lib32/pkgconfig/
}
