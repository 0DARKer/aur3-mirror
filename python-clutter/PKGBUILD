# Maintainer: Michael Kanis <mkanis(at)gmx(dot)de>
pkgname=python-clutter
pkgver=1.0.2
pkgrel=1
pkgdesc="Python Bindings for Clutter (also known as pyclutter)"
arch=('i686' 'x86_64')
url="http://clutter-project.org/"
license=('LGPL')
depends=('pygtk' 'pycairo' 'clutter')
options=('!libtool')
source=(http://www.clutter-project.org/sources/pyclutter/1.0/pyclutter-$pkgver.tar.bz2)
md5sums=('6655951d0e1edf4a5db304efa972b730')

build() {
  cd $startdir/src/pyclutter-$pkgver
  ./configure --prefix=/usr --disable-docs
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}

