# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-pywavelets
pkgver=0.2.0
pkgrel=2
pkgdesc="PyWavelets, wavelet transform module"
arch=('i686' 'x86_64')
url="http://www.pybytes.com/pywavelets/"
license=('MIT')
depends=('python2')
makedepends=('python2-distribute' 'cython2' 'gcc')
options=(!emptydirs)

source=(http://pypi.python.org/packages/source/P/PyWavelets/PyWavelets-$pkgver.tar.bz2
	cython.patch)
md5sums=('c817b0d0e019ef2e7177d7c8a345e6bf'
         'ac4c9801ac7e2e75e9cf88cf5faa33da')

build() {
  cd "$srcdir/PyWavelets-$pkgver"
  patch -p0 < ../cython.patch

  python2 setup.py install --root="$pkgdir"/ --optimize=1

  install -D COPYING.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

