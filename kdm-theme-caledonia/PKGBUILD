pkgname=kdm-theme-caledonia
_themename=Caledonia
pkgver=1.6.1
pkgrel=1
pkgdesc="The official KDM theme for Caledonia"
arch=('any')
url="http://sourceforge.net/projects/caledonia/files/Caledonia%20KDM/"
license=('CCPL')
depends=('kdebase-workspace')
conflicts=('caledonia-bundle')
source=("http://downloads.sourceforge.net/project/caledonia/Caledonia%20KDM/$_themename-KDM.tar.gz")
sha512sums=('e63f62ed84f6dd5d0c1658e837e2dcd0b02c507d0f2e096fb9d54c7551c3a9fdccd84f5b0796cc91433306ab80442cb7f9109490eae8ed7536c9f05023074175')

package() {
  mkdir -p $pkgdir/usr/share/apps/kdm/themes/
  mv $srcdir/$_themename-KDM $pkgdir/usr/share/apps/kdm/themes/
}