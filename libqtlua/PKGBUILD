# Maintainer: Alexandre Becoulet <alexandre.becoulet@free.fr>

pkgname=libqtlua
pkgver=2.0
pkgrel=1
pkgdesc="Make Qt5 applications scriptable using the Lua scripting language"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/libqtlua/"
license=('LGPL3')
depends=("qt5-base" "lua>=5.0.0")
options=(libtool)
source=(http://download.savannah.gnu.org/releases/libqtlua/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr
  ./configure --prefix=/usr --disable-examples --enable-qtrelease || return 1

  make || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('7e3035ec2ff6b638ef6eaf68835d97a8')
