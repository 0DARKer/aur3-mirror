# Maintainer: Alexandre Becoulet <alexandre.becoulet@free.fr>

pkgname=libqtlua
pkgver=1.2.1
pkgrel=2
pkgdesc="Make Qt4 applications scriptable using the Lua scripting language"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/libqtlua/"
license=('LGPL3')
depends=("qt>=4.2.0" "lua>=5.0.0")
options=(libtool)
source=(http://download.savannah.gnu.org/releases/libqtlua/libqtlua-1.2.1.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --disable-examples || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('71f15ec8cfda8b4dfddb46fc115aa326')
