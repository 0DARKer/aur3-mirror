# Contributor: mightyjaym <jm.ambrosino@free.fr>

pkgname=lib32-gstreamer0.10
pkgver=0.10.31
pkgrel=1
pkgdesc="GStreamer Multimedia Framework"
url="http://gstreamer.freedesktop.org/"
arch=('x86_64')
license=('LGPL')
groups=('lib32')
depends=('lib32-glib2' 'lib32-libxml2')
source=(ftp://ftp.archlinux.org/extra/os/i686/gstreamer0.10-${pkgver}-1-i686.pkg.tar.xz)
md5sums=('c089bff1a42b16b875ebaee14e57ae4a')

build() {
	install -dm755 $pkgdir/usr/lib32/gstreamer-0.10 || return 1
	cp -R $srcdir/usr/lib/gstreamer-0.10/*.so* $pkgdir/usr/lib32/gstreamer-0.10 || return 1
}
