post_install() {
  if [ -z `getent group servicemix` ]; then
    groupadd servicemix
  fi

  chgrp -R servicemix /etc/servicemix
  chgrp -R servicemix /var/lib/servicemix

  printf "\n-> Users must be added to 'servicemix' group in order to execute it correctly.\n"
}

post_remove() {
  groupdel servicemix 
}
