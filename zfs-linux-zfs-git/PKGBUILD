# Maintainer: Zubkov Alexander <green@msu.ru>
pkgname=zfs-linux-zfs-git
pkgver=20110304
pkgrel=1
pkgdesc="Provides libzfs library and support utilities for the zfs file system"
arch=(x86_64)
url="https://github.com/zfs-linux"
license=('CDDL')
depends=('util-linux' 'e2fsprogs' 'nfs-utils')
makedepends=('git' 'kernel26-headers' 'zfs-linux-spl')
provides=('zfs-linux-zfs')
options=(!libtool)
source=()
md5sums=()

_gitroot="https://github.com/zfs-linux/zfs.git"
_gitname="zfs"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  sh ./autogen.sh
  ./configure --prefix=/usr --libexecdir=/usr/lib
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
} 
