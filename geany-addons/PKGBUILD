# Contributor: stroncium <yanis.benson@gmail.com>

pkgname=geany-addons
pkgver=0.2
pkgrel=2
pkgdesc="This plugin adds various small addons to Geany which aren't worth an own plugin but might still useful for people."
url="http://plugins.geany.org/addons/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('geany')
provides=("$pkgname=$pkgver")
makedepends=('gcc')
source=(
  "http://plugins.geany.org/addons/addons-$pkgver.tar.bz2"
  )
md5sums=(
  'a33416651cff48f6ccdb76e69105acd8'
  )

build() {
  cd addons-$pkgver || return 1
  ./configure || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  }
