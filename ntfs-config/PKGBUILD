#Maintainer: Joao Cordeiro <jlcordeiro at gmail dot com>

pkgname=ntfs-config
pkgver=1.0.1
pkgrel=7
pkgdesc="Enable/disable NTFS write support with a simple click"
arch=('i686' 'x86_64')
url="http://flomertens.free.fr/ntfs-config/"
license=('GPL-2')
depends=('python2' 'pygtk' 'udev' 'ntfs-3g')
optdepends=('hal: external devices'
            'gnome-mount: external devices (or any other that can handle ntfs-3g using hal as backend)'
            'device-mapper: crypt, lvm and raid devices'
            'e2fsprogs: blkid')
source=(http://flomertens.free.fr/ntfs-config/download/source/ntfs-config-$pkgver.tar.gz
        python-2.7.patch)
md5sums=('d491c8129aa9dad4de28b2b0b2b8f309'
         'c4bc91765a82a48d749ef9db464be43c')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p1 < ../../python-2.7.patch	
  ./configure --prefix=/usr
  make || return 1

# solve the small HAL_CONFIG_DIR problem
  mkdir -p $pkgdir/etc/hal/fdi
  touch $pkgdir/etc/hal/fdi/policy

  make DESTDIR=$pkgdir install
}

# vim:set ts=2 sw=2 et:
