# Maintainer: Martin Rotter <rotter.martinos@gmail.com>
# Contributor: Petr Vanek <petr@scribus.info>

pkgname=qonverter-git
pkgver=20120408
pkgrel=1
pkgdesc='Simple and easy to use desktop calculator & unit converter.'
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/quonverter/"
license=('GPL3')
depends=(qt hicolor-icon-theme)
makedepends=(gcc git)
conflicts=(qonverter)

_gitname=quonverter
_gitroot=git://quonverter.git.sourceforge.net/gitroot/quonverter/quonverter

build() {
  cd "$srcdir"
  msg "Cloning qonverter repository..."
  
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin master
    msg "The local files are updated..."
  else
    git clone $_gitroot
  fi

  msg "Git checkout done or server timeout..."
  cd "$srcdir/$_gitname"

  if [ ! -d "build" ]; then
    mkdir "build"
  fi

  msg "Preparing files with qmake..."
  qmake "CONFIG+=release" "PREFIX=${pkgdir}/usr" Qonverter.pro

  msg "Compiling files..."
  make -j3
  msg "All files were successfully compiled..."
  msg "Packaging files..."
  make install
}
