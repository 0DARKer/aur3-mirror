# Contributer: giacomogiorgianni@gmail.com 

pkgname=grive
pkgver=0.0.2
pkgrel=2
pkgdesc="Open source Linux client for Google Drive"
arch=('i686' 'x86_64')
url="http://match065.github.com/grive/"
license=('GPL')
categories=('network')
depends=('gcc-libs' 'curl' 'json-c' 'openssl')
makedepends=('cmake' 'cppunit')
options=(!emptydirs)
source=("match065-grive-60f1e87::https://nodeload.github.com/match065/grive/tarball/master")
md5sums=('942c702b8ba6e1b657424ed3b8bdc1bf')

build() {
  cd "$srcdir/match065-grive-60f1e87"
 
  rm -rf build
 
  mkdir build
 
  cd build
 
  cmake .. -DCMAKE_BUILD_TYPE=Release \
           -DCMAKE_INSTALL_PREFIX=/usr
 
  make
}
 
package() {
    install -dm 755 $pkgdir/usr/bin
    cp $srcdir/match065-grive-60f1e87/build/grive $pkgdir/usr/bin
}