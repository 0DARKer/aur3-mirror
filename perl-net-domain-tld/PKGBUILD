pkgname='perl-net-domain-tld'
pkgver='1.68'
pkgrel='1'
pkgdesc="Work with TLD names "
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Net-Domain-TLD'
source=('http://search.cpan.org/CPAN/authors/id/A/AL/ALEXP/Net-Domain-TLD-1.68.tar.gz')
md5sums=('0bee2c6c57a07f98082b8968534567f9')

build() {
  _DISTDIR="${srcdir}/Net-Domain-TLD-1.68"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
