pkgname=python-flask-git
_pkgname=flask
pkgver=1481.4042651
pkgrel=1
pkgdesc='Micro webdevelopment framework for Python (git python3 version)'
arch=('i686', 'x86_64')
url='http://flask.pocoo.org/'
license=('custom:BSD')
depends=('python-werkzeug' 'python-jinja' 'python-itsdangerous')
makedepends=('git')
conflicts=('python-flask')
provides=('python-flask')
source=('git://github.com/mitsuhiko/flask.git#branch=sprint-branch')
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/$_pkgname"
    echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

check() {
    cd "$srcdir/$_pkgname"

    python setup.py test || true
}

build() {
    cd "$srcdir/$_pkgname"

    python setup.py build
}

package() {
    cd "$srcdir/$_pkgname"

    python setup.py install --root=${pkgdir} --optimize=1

    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/python-werkzeug
}
