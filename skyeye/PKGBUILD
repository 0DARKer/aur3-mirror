# Maintainer: osily <ly50247 at gmail dot com>
# Contributor: kfgz <kfgz at interia dot pl>

pkgname=skyeye
pkgver=1.3.2_rc1
pkgrel=1
pkgdesc="An emulator which supports various ARM platforms"
arch=('i686' 'x86_64')
url="http://www.skyeye.org/"
license=('GPL')
depends=('gtk2')
options=(!makeflags)
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('6e270ed45b95eebefb3b86e70f689e36')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --sysconfdir=${pkgdir}/usr/share --prefix=${pkgdir}/usr
  make lib
  make
  make install_lib install
  #make DESTDIR="${pkgdir}" install_lib
  
  rm ${pkgdir}/usr/lib/libbfd.a
  rm ${pkgdir}/usr/lib/libbfd.so
  rm ${pkgdir}/usr/lib/libiberty.a
  rm ${pkgdir}/usr/lib/libopcodes.a
  rm ${pkgdir}/usr/lib/libopcodes.so
  mkdir -p ${pkgdir}/usr/share/${pkgname}
  bsdtar -czf ${pkgdir}/usr/share/${pkgname}/testsuite.tgz ${pkgdir}/usr/testsuite
  rm -r ${pkgdir}/usr/testsuite
  mv ${pkgdir}/usr/info ${pkgdir}/usr/share/
  rm ${pkgdir}/usr/include/*.*
}
