pkgname=groonga
pkgver=1.3.0
pkgrel=2
pkgdesc="An opensource fulltext search engine."
arch=('i686' 'x86_64')
url="http://groonga.org/"
license=('LGPL2')
source=("http://packages.groonga.org/source/groonga/$pkgname-$pkgver.tar.gz")
depends=('zlib' 'glib2' 'libedit')
optdepends=('zeromq')

build() {
	cd $srcdir/$pkgname-$pkgver
		./configure --prefix=/usr \
		--with-zlib \
		--enable-document \
		--enable-shared=yes \
		--enable-static=yes \
#		--with-mecab \

		make
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}

md5sums=('d8b3ada75185b59665131e4eee30d107 ')
