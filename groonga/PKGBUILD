pkgname=groonga
pkgver=2.1.1
pkgrel=1
pkgdesc="An opensource fulltext search engine."
arch=('i686' 'x86_64')
url="http://groonga.org/"
license=('LGPL2')
source=("http://packages.groonga.org/source/groonga/$pkgname-$pkgver.tar.gz")
depends=('zlib' 'glib2' 'libedit' 'zeromq' 'libevent' 'mecab')
optdepends=('cutter-test_framework' 'ruby' 'mercurial')

build() {
	cd $srcdir/$pkgname-$pkgver
		./configure --prefix=/usr \
		--with-zlib \
		--enable-document \
		--enable-shared=yes \
		--enable-static=yes \
		--with-mecab

		make
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}

md5sums=('bdc7630fb348b5f0e56aa84a0f35e480')
