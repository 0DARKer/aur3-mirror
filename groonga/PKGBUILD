pkgname=groonga
pkgver=1.2.9
pkgrel=1
pkgdesc="An opensource fulltext search engine."
arch=('i686' 'x86_64')
url="http://groonga.org/"
license=('LGPL2')
source=("http://packages.groonga.org/source/groonga/$pkgname-$pkgver.tar.gz")
depends=('zlib' 'glib2' 'libedit')
optdepends=('zeromg')

build() {
	cd $srcdir/$pkgname-$pkgver
		./configure --prefix=/usr \
		--with-zlib \
		--enable-document \
		--enable-shared=yes \
		--enable-static=yes \
#		--with-mecab \

		make
}

pkckage() {
	cd $srcdir/$pkgname-%pkgver
	make DESTDIR="$pkgdir" install
}

md5sums=('47117baa401a3db08362e00f94fced12')
