# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-project
_pkgname=trytond_project
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The project module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-company-work-time>=3.2' 'trytond-party>=3.2' 'trytond-timesheet>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("bd685031a0d1f82f3003d2e3778513f5")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}