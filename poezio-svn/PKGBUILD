# Maintainer: mathieui <mathieui[at]mathieui.net>
# Contributor: mathieui <mathieui[at]mathieui.net>

pkgname=poezio-svn
pkgrel=1
pkgver=327
pkgdesc="A full-featured command-line irc-like (muc-centered) jabber client (svn)"
arch='any'
url="http://poezio.eu"
conflicts=('poezio')
provides=('poezio')
license=('GPL')
depends=('python' 'python-sleekxmpp')
makedepends=('setuptools' 'subversion')
_svnmod="poezio"
_svntrunk="http://svn.codingteam.net/poezio"

install=$pkgname.install

build() {
    cd "${srcdir}"

    msg "Connecting to server...."
    svn export $_svntrunk ${_svnmod}
    msg "SVN checkout done or server timeout"

    cd "${_svnmod}/"
    make DESTDIR=$pkgdir prefix=/usr install
}
