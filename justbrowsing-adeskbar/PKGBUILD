# Contributor: SpepS <dreamspepser at yahoo dot it>
# Contributor: Dogukan Korkmazturk <d.korkmazturk@gmail.com>
# Contributor: Ronan Rabouin <darkbaboon@gmail.com>
 
pkgname=justbrowsing-adeskbar
_pkgname=adeskbar
pkgver=0.5.1
pkgrel=2
pkgdesc="A lightweight application launcher configured for JustBrowsing"
arch=('any')
url="https://github.com/justbrowsing/justbrowsing-adeskbar"
license=('GPL3')
depends=('python2-xdg' 'gnome-menus2' 'pygtk')
optdepends=('network-manager-applet-gtk2: networking systray' 'pnmixer: volume systray')
conflicts=("adeskbar")
groups=("justbrowsing")
source=("https://github.com/justbrowsing/justbrowsing-adeskbar/archive/master.zip")
md5sums=('35355a2625a7c26cbd8121ded32e2bba')
 
package() {
  cd "$srcdir/${pkgname}-master"

  # Install
  install -d "$pkgdir/usr/share/$_pkgname"
  cp -a src/* "$pkgdir/usr/share/$_pkgname"

  # icon
  install -Dm644 "src/images/$_pkgname.png" "$pkgdir/usr/share/pixmaps/$_pkgname.png"

  # desktop file
  install -Dm644 "$_pkgname.desktop" "$pkgdir/usr/share/applications/$_pkgname.desktop"

  # launcher
  install -Dm555 "$_pkgname"  "$pkgdir/usr/bin/adeskbar"
  chmod +x "$pkgdir/usr/bin/adeskbar"
}

