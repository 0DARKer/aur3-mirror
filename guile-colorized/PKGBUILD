# Maintainer: Profpatsch <mail[at]profpatsch[dot]de>
pkgname=guile-colorized
pkgver=0.0.3
pkgrel=1
pkgdesc="Colorized REPL for GNU Guile"
url="https://github.com/NalaGinrut/guile-colorized"
arch=('any')
license=('GPL3')
depends=('guile')
builddepends=('guile')
source=("git+https://github.com/NalaGinrut/guile-colorized.git")
md5sums=('SKIP')


package() {
  cd ${pkgname}
  local load_path="$(guile -c "(display (car %load-path))")"
  target="${pkgdir}/${load_path}/ice-9"
  mkdir -p "${target}"

  local tag_prefix="v"
  git checkout "${tag_prefix}${pkgver}"
  [ $? -eq 0 ] \
    && make TARGET="${target}" install \
    || (echo "Version ${tag_prefix}${pkgver} doesnâ€™t exist!" ; exit -1)
}