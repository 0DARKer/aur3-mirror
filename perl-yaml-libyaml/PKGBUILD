options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/YAML-LibYAML'
source=('http://search.mcpan.org/CPAN/authors/id/I/IN/INGY/YAML-LibYAML-0.55.tar.gz')
