pkgdesc="Perl YAML Serialization using XS and libyaml"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/YAML-LibYAML'
source=('http://search.mcpan.org/CPAN/authors/id/I/IN/INGY/YAML-LibYAML-0.52.tar.gz')
md5sums=('3f7fe918153c84e6947e0be5d838e9b1')
