# CPAN Name  : YAML-LibYAML
# Contributor: Justin Davis <jrcd83@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 1.06
pkgname='perl-yaml-libyaml'
pkgver='0.34'
pkgrel='1'
pkgdesc="Perl YAML Serialization using XS and libyaml"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/YAML-LibYAML'
source=('http://search.cpan.org/CPAN/authors/id/I/IN/INGY/YAML-LibYAML-0.34.tar.gz')
md5sums=('85b4427e88597392d9cdefbad0469245')

build() {
  DIST_DIR="${srcdir}/YAML-LibYAML-0.34"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&

    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;


  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
