# Contributor: ShadowKyogre <shadowkyogre@gmail.com>
# Maintainer: res <andres87p gmail>
pkgname=artha
pkgver=1.0.2
pkgrel=3
pkgdesc='A free cross-platform English thesaurus based on WordNet'
arch=('i686' 'x86_64')
url=http://$pkgname.sourceforge.net/wiki/index.php/Home
license=('GPL')
depends=('wordnet' 'gtk2' 'dbus-glib')
optdepends=('enchant: spell checking support' 'libnotify: notification support')
options=('!emptydirs')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('8391fc152531d98bc7db6a7695611137')

build() {
    cd $pkgname-$pkgver

    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=$pkgdir install
}
