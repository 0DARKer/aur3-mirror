# Contributor: Simon Lackerbauer <calypso@strpg.org>
pkgname=libsylph
pkgver=1.1.0
pkgrel=1
pkgdesc="A lib providing core features of the mailer Sylpheed UI-independent"
arch=('i686' 'x86_64')
url="http://sylpheed.sraoss.jp/en/"
license=("LGPL")
source=(http://sylpheed.sraoss.jp/sylpheed/libsylph/$pkgname-$pkgver.tar.bz2)
md5sums=('bdf3f93021d71dfe01639016eccfd900')
sha1sums=('7b99027e1c92b7fae0f52e21acc6b6c27a8af1af')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
