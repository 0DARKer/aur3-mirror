# Maintainer: Maurizio D'Addona <mauritiusdadd@libero.it>

pkgname=lxnstack
pkgver=1.4.1
pkgrel=1
pkgdesc="A program usefull to align and stack astronomical images"
arch=(any)
url="http://sourceforge.net/p/lxnstack/wiki/Home/"
license=('GPL3')
groups=()
provides=('lxnstack')
conflicts=('lxnstack')
depends=('python2' 'python2-numpy' 'python2-scipy' 'qt4' 'opencv' 'python2-pillow' 'python2-pyqt' 'v4l-utils')
optdepends=('python2-pyfits: to read/write FITS file')
options=(docs)
install="$pkgname.install"
source=("http://master.dl.sourceforge.net/project/lxnstack/tarballs/$pkgname-$pkgver.tar.gz")
sha256sums=('269eef8c5fe658e7e3cfa9ca25f6aef12042b26f09c9032c9e8c81c7f60b6153')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir "$pkgdir/usr"
  python2 ./install.py --prefix="$pkgdir/usr" --ignore-prefix
}

