pkgname=lxnstack
pkgver=1.2.0
pkgrel=1
pkgdesc="A program usefull to align and stack astronomical images"
arch=(any)
url="http://sourceforge.net/p/lxnstack/wiki/Home/"
license=('GPL3')
groups=()
depends=('python2>=2.7.0' 'python2-numpy>=1.7.0' 'python2-scipy>=0.10' 'qt4>=4.8.0' 'opencv>=2.4.0' 'python2-imaging>=1.1.6' 'python2-pyqt>=4.9.6' 'v4l-utils>=0.8.9')
optdepends=('python2-pyfits: to read/write FITS file')
options=()
source=(http://ignum.dl.sourceforge.net/project/lxnstack/tarballs/$pkgname-$pkgver.tar.gz)
md5sums=('f7ca0c832dde40896deb9cad486891bc') #generate with 'makepkg -g'

package() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir "$pkgdir/usr"
  python2 ./install.py --prefix="$pkgdir/usr" --ignore-prefix
}

