pkgname=lxnstack
pkgver=1.3.1
pkgrel=1
pkgdesc="A program usefull to align and stack astronomical images"
arch=(any)
url="http://sourceforge.net/p/lxnstack/wiki/Home/"
license=('GPL3')
groups=()
depends=('python2' 'python2-numpy' 'python2-scipy' 'qt4' 'opencv' 'python2-imaging' 'python2-pyqt' 'v4l-utils')
optdepends=('python2-pyfits: to read/write FITS file')
options=()
source=(http://netcologne.dl.sourceforge.net/project/lxnstack/tarballs/$pkgname-$pkgver.tar.gz)
md5sums=('be6d696bff3b038297174f724c1d38b2') #generate with 'makepkg -g'

package() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir "$pkgdir/usr"
  python2 ./install.py --prefix="$pkgdir/usr" --ignore-prefix
}

