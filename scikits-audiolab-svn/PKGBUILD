# Contributor: Artyom Smirnov <smirnoffjr@gmail.com>
pkgname=scikits-audiolab-svn
pkgver=1491
pkgrel=1
pkgdesc="Small toolbox to read, write and play audio to and from numpy arrays. "
arch=('i686' 'x86_64')
url="http://scipy.org/scipy/scikits/wiki/AudioLab"
license=('LGPL')
depends=('python' 'libsndfile' 'python-numpy')
makedepends=('setuptools' 'subversion')
provides=('scikits-audiolab')
conflicts=('scikits-audiolab')
source=()
md5sums=()

_svntrunk=http://svn.scipy.org/svn/scikits/trunk/audiolab
_svnmod=audiolab

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -r "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  python setup.py install --prefix=$pkgdir/usr
}
