post_install() { 
	update-desktop-database -q

	cat << _EOF

    To complete the installation, please run the following:
    cd /opt/birdfont && sudo python2 install.py

    If you wish to completly REMOVE the package from your system, run:
    cd /opt/birdfont && sudo python2 uninstall
	The above command must be run BEFORE you do pacman -Rs birdfont

_EOF
}

post_upgrade() {
  post_install
}