# Maintainer: Andras Biro <bbandi86@gmail.com>
pkgname=nesc
pkgver=1.3.1
pkgrel=1
pkgdesc="A C dialect developed for TinyOS"
arch=('i686' 'x86_64')
license=('GPL')
options=(!libtool)
url="http://www.tinyos.net/"
depends=('perl')
source=(http://tinyos.stanford.edu/tinyos-rpms/${pkgname}-${pkgver}.tar.gz)
md5sums=('e32217f600e0d9619f3c92e2f922d400')
sha1sums=('58f799c4c342b4949dd82790b2c09fb12a4e357a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr/
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
