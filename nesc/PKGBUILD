# Maintainer: Andras Biro <bbandi86@gmail.com>
pkgname=nesc
pkgver=1.3.1
pkgrel=2
pkgdesc="A C dialect developed for TinyOS"
arch=('i686' 'x86_64')
license=('GPL')
options=(!libtool)
url="http://www.tinyos.net/"
depends=('perl')
source=("http://tinyos.stanford.edu/tinyos-rpms/${pkgname}-${pkgver}.tar.gz"
	"perl512.patch")
md5sums=('e32217f600e0d9619f3c92e2f922d400'
	 '3821041d668fb6d54c7f415a2b2370e8')

build() {
  cd ${srcdir}
  patch -p0 < perl512.patch
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr/
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
