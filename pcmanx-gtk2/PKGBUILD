pkgname=pcmanx-gtk2
pkgver=1.0
pkgrel=2
pkgdesc="A gtk+ based free BBS client"
arch=('i686' 'x86_64')
url="http://code.google.com/p/pcmanx-gtk2"
license=('GPL')
depends=('gtk2' 'wget')
makedepends=('autoconf' 'automake' 'intltool')
options=('!libtool')
source=(http://pcmanx-gtk2.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2
    pcmanx.install)
md5sums=('b2fe19a69e34a832a51319f44ec29539'
    '6374916400684c2db957be0250a4ca98')
install=pcmanx.install

build() {
    cd ${startdir}/src/${pkgname}-${pkgver}
    ./configure --prefix=/usr --enable-wget --enable-iplookup || return 1
    make || return 1
    make DESTDIR=${startdir}/pkg install || return 1
}

