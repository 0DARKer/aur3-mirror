pkgname=curseofwar
pkgver=1.0
pkgrel=1
pkgdesc="A fast-paced RTS/Action game with ncurses interface"
arch=("i686" "x86_64")
url="https://bbs.archlinux.org/viewtopic.php?id=164324"
license=('GPL')
groups=()
depends=('ncurses')
makedepends=('gcc')
install=
source=(https://dl.dropboxusercontent.com/u/70985178/$pkgname-$pkgver.tar.gz)
md5sums=('8cfea5ad965f0bedf4156b1d3ea1ecf8')

build() {
	cd "$srcdir/$pkgname-$pkgver"
#	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
