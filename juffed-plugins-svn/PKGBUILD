pkgname=juffed-plugins-svn
pkgver=139
pkgrel=1
pkgdesc="Various plugins for JuffEd text editor."
arch=('i686' 'x86_64')
url="http://code.google.com/p/juffed-plugins/"
license=('GPL2')
depends=('qt' 'juffed')
makedepends=('svn')
source=()
md5sums=()

_svntrunk="http://juffed-plugins.googlecode.com/svn/trunk/"
_svnmod="juffed-plugins"

build() {
 cd $srcdir

msg "Connecting to $_svntrunk SVN server...."
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

for i in charsets doclist favorites findinfiles fm keybindings textmod; do
  cd $i
  qmake || return 1
  make || return 1
  mkdir -p $startdir/pkg/usr/share/juffed/plugins/
  install -Dm644 -p $srcdir/$_svnmod-build/lib$i.so $pkgdir/usr/share/juffed/plugins/lib$i.so
cd ..
done
rm -r $srcdir/$_svnmod-build
}
