# Contributor: bountykiller <masse.nicolas@gmail.com>
pkgname=linux-fusion-dev
pkgver=7.0.1
pkgrel=1
pkgdesc="The Linux Fusion kernel module - developpement version"
realname=linux-fusion
conflicts=$realname
provides=$realname
arch=(i686 x86_64)
url="http://www.directfb.org"
license="LGPL"
install=$pkgname.install
source=(http://www.directfb.org/downloads/Core/$realname-$pkgver.tar.gz)
md5sums=('937028c98dbfd512f0c570c5ffe13769')
build () {
	cd $startdir/src/$realname-$pkgver/
	make
	make DESTDIR=$startdir/pkg install
	cd $startdir/pkg/lib/modules/`uname -r`/
	rm modules.* #AFAIK these are useless ans does contains nothing
}
