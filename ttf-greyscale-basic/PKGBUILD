# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>
pkgname=ttf-greyscale-basic
_realname=Greyscale-Basic
pkgver=1
pkgrel=1.3
pkgdesc="Greyscale Basic True Type Font"
arch=('any')
license=('custom:free')
url="http://www.fontsquirrel.com/fonts/Greyscale-Basic"
_url="http://www.fontsquirrel.com/fonts/download/Greyscale-Basic"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=ttf.install
options=(force)
source=("$_url/$_realname.zip")

md5sums=('b3dfda1f4ee5f7cfdeb0cdc9e87e3655')

build() {
  cd $srcdir
  install -d $pkgdir/usr/share/fonts/TTF/
  install -m644 *.ttf $startdir/pkg/usr/share/fonts/TTF/ || return 1
  install -Dm644 GreyscaleNet* $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
