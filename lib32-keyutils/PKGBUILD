# Maintainer: p2k <Patrick.Schneider@uni-ulm.de>
pkgname=lib32-keyutils
pkgver=1.4
pkgrel=1
pkgdesc="Userspace tools for the kernel key management system (32-bit libraries only)"
url="http://people.redhat.com/~dhowells/keyutils/"
license=('GPL' 'LGPL')
arch=('x86_64')
source=(http://arche.p2k-network.org/repo/i686/${pkgname/lib32-/}-${pkgver}-$pkgrel-i686.pkg.tar.xz)
depends=('lib32-glibc')
md5sums=('460a193de0f261699bc56d1fe6a03994')

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
  # Fixes a design flaw in keyutils' Makefile
  rm $pkgdir/opt/lib32/usr/lib/libkeyutils.so
  ln -s libkeyutils.so.1 $pkgdir/opt/lib32/usr/lib/libkeyutils.so
}

