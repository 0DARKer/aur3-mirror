pkgname=xoops
pkgver=2.5.1
pkgrel=1
pkgdesc="A PHP-based content management platform"
arch=('any')
url='http://www.xoops.org/'
license=('GPL')
depends=('php' 'apache' 'php-apache' 'mysql')
source=('http://ufpr.dl.sourceforge.net/project/xoops/XOOPS%20Core%20%28stable%20releases%29/XOOPS%202.5.1/xoops-2.5.1.tar.gz')
md5sums=('54ff90bd7afa2950f1981f3cacd2309a')

build() {
  mkdir -p "${pkgdir}/usr/share/webapps/xoops"
  #mkdir -p "${pkgdir}/etc/webapps/xoops"

  cp -R "${srcdir}/xoops-${pkgver}/htdocs" "${pkgdir}/usr/share/webapps/xoops"
}
