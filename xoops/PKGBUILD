pkgname=xoops
pkgver=2.0.18
pkgrel=1
pkgdesc="A PHP-based content management platform"
arch=('i686' 'x86_64')
url="http://www.xoops.org/"
license=('GPL')
depends=('php' 'apache')
install=('xoops.install')

source=(http://superb-east.dl.sourceforge.net/sourceforge/xoops/$pkgname-$pkgver.tar.gz)
md5sums=('72052c6405f91daacc33d231fffad62d')

build() {
	  mkdir -p $startdir/pkg/home/httpd/html/xoops
	    cp -r $startdir/src/$pkgname-$pkgver/* $startdir/pkg/home/httpd/html/xoops
    }
