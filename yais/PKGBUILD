# Contributor: Iru Cai <mytbk920423@gmail.com>

pkgname=yais
pkgver=0.1
pkgrel=1
pkgdesc="Yet Another Installation Script for Archlinux"
arch=('any')
url="https://github.com/mytbk/yais"
license=('GPL')
depends=('arch-install-scripts')
source=("https://github.com/mytbk/yais/archive/master.zip")
md5sums=('ad8981173930edc13f26e884aa1fcab5')

build() {
  true
}

package() {
  cd "${srcdir}/yais-master"
  make DESTDIR="${pkgdir}" install
#copy an /arch/setup
  mkdir ${pkgdir}/arch
  ln -s /usr/bin/yais ${pkgdir}/arch/setup
}

# vim:set ts=2 sw=2 et:
