# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
pkgname=open_watcom
pkgver=1.9.0
pkgrel=1
pkgdesc="The Open Watcom compiler"
arch=("i686")
url="http://www.openwatcom.org"
license=('OWPL-1')
makedepends=(gcc)
source=( "ftp://ftp.openwatcom.org/source/open_watcom_1.9.0-src.tar.bz2")
md5sums=('01f5a15c6c24c343159f9fcc4434fd22')


build() {
  cd OW18src/

	./build.sh || return 1
	mkdir -p "$pkgdir"/opt
	cp -R rel2 "$pkgdir"/opt/openwatcom
	ln -s binl "$pkgdir"/opt/openwatcom/bin
  mkdir -p "$pkgdir"/usr/share/licenses/open_watcom
  cp license.txt "$pkgdir"/usr/share/licenses/open_watcom

}

