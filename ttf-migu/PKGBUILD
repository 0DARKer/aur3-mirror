# Maintainer: gasuketsu02 <gasuketsu02@gmail.com>
pkgname=ttf-migu
pkgver=20110610
pkgrel=1
pkgdesc="Good looking Japanese TrueType font by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migu/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
ipagver=00303
sfdir=52283
mplusver=TESTFLIGHT-040
install=ttf.install
source=("http://dl.sourceforge.jp/mix-mplus-ipa/${sfdir}/Migu-1C-${pkgver}.zip"
        "http://dl.sourceforge.jp/mix-mplus-ipa/${sfdir}/Migu-1M-${pkgver}.zip"
        "http://dl.sourceforge.jp/mix-mplus-ipa/${sfdir}/Migu-1P-${pkgver}.zip"
        "http://dl.sourceforge.jp/mix-mplus-ipa/${sfdir}/Migu-2M-${pkgver}.zip")
build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/Migu-1?-${pkgver}/*.ttf ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/Migu-2?-${pkgver}/*.ttf ${pkgdir}/usr/share/fonts/TTF

  # install license files
  cd ${srcdir}/Migu-1C-${pkgver}
  install -d ${pkgdir}/usr/share/licenses/${pkgname}/{ipag${ipagver},mplus-${mplusver}}
  install -m644 Migu-README.txt ${pkgdir}/usr/share/licenses/${pkgname}/
  install -m644 ipag${ipagver}/* ${pkgdir}/usr/share/licenses/${pkgname}/ipag${ipagver}
  install -m644 mplus-${mplusver}/* ${pkgdir}/usr/share/licenses/${pkgname}/mplus-${mplusver}
}

md5sums=('230f41e2019b871e0974132523a8096c'
         '80fac84b3ee94a85436995296bf1eb9d'
         'bbb959de0a4efb69829e63eedd5307a3'
         'a50bb4d9798e3d77073b1b02f4c982c9')
