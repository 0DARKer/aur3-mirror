# Maintainer: gasuketsu02 <gasuketsu02@gmail.com>
pkgname=ttf-migu
pkgver=20110418
pkgrel=1
pkgdesc="Good looking Japanese TrueType font by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migu/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=("http://dl.sourceforge.jp/mix-mplus-ipa/51710/Migu-1C-${pkgver}.zip"
        "http://dl.sourceforge.jp/mix-mplus-ipa/51710/Migu-1M-${pkgver}.zip"
        "http://dl.sourceforge.jp/mix-mplus-ipa/51710/Migu-1P-${pkgver}.zip")
build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/*/*.ttf ${pkgdir}/usr/share/fonts/TTF/

  # install license files
  cd ${srcdir}/Migu-1C-${pkgver}
  install -d ${pkgdir}/usr/share/licenses/${pkgname}/{ipag00302,mplus-TESTFLIGHT-038}
  install -m644 Migu-README.txt ${pkgdir}/usr/share/licenses/${pkgname}/
  install -m644 ipag00302/* ${pkgdir}/usr/share/licenses/${pkgname}/ipag00302
  install -m644 mplus-TESTFLIGHT-038/* ${pkgdir}/usr/share/licenses/${pkgname}/mplus-TESTFLIGHT-038
}
md5sums=('eddd14cb3e01ad2feca3b5d822436bdb'
         'ddd2adbd1f45b85fad851f189d35547b'
         '4665ea64c0d497ad6feb1040bdff067c')
