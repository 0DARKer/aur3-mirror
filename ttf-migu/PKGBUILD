# Maintainer: gasuketsu02 <gasuketsu02@gmail.com>
pkgname=ttf-migu
pkgver=20110207
pkgrel=1
pkgdesc="Good looking Japanese TrueType font by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migu/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=("http://dl.sourceforge.jp/mix-mplus-ipa/50857/Migu-1P-${pkgver}.zip"
        "http://dl.sourceforge.jp/mix-mplus-ipa/50857/Migu-1M-${pkgver}.zip")
build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/*/*.ttf ${pkgdir}/usr/share/fonts/TTF/

  # install license files
  cd ${srcdir}/Migu-1P-${pkgver}
  install -d ${pkgdir}/usr/share/licenses/${pkgname}/{ipag00302,mplus-TESTFLIGHT-036}
  install -m644 Migu-README.txt ${pkgdir}/usr/share/licenses/${pkgname}/
  install -m644 ipag00302/* ${pkgdir}/usr/share/licenses/${pkgname}/ipag00302
  install -m644 mplus-TESTFLIGHT-036/* ${pkgdir}/usr/share/licenses/${pkgname}/mplus-TESTFLIGHT-036
}
md5sums=('f44e5636038186f01a2804267cd21644'
         '5ee61397479a0e64cf5a26d1df36f0a8')
