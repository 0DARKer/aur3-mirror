# Contributor: Guilherme M. Nogueira <guilherme@nirev.org>
pkgname=perl-html-format
pkgver=2.04
pkgrel=2
pkgdesc="Format HTML into text/PS/RTF"
url="http://search.cpan.org/~sburke/HTML-Format/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.004' 'perl-html-tree>=3.15')
makedepends=()
conflicts=()
arch=('i686' 'x86_64')
options=('!emptydirs')
install=${pkgname}.install
source=(http://search.cpan.org/CPAN/authors/id/S/SB/SBURKE/HTML-Format-${pkgver}.tar.gz)
md5sums=('2d287392b77c959f06397371116c2d7e')

build() {
    cd ${startdir}/src/HTML-Format-${pkgver}
    # Install into vendor directory
    perl Makefile.PL INSTALLDIRS=vendor || return 1
    make || return 1
    make DESTDIR=${startdir}/pkg install || return 1
    # Remove .packlist and perllocal.pod files
    find ${startdir}/pkg -name '.packlist' -delete
    find ${startdir}/pkg -name '*.pod' -delete
}

