pkgname=gnome-shell-extensions-git
_realname=gnome-shell-extensions
pkgver=20110504
_realver=3.0.0
pkgrel=1
pkgdesc="GNOME Shell extensions"
arch=('i686' 'x86_64')
url="http://live.gnome.org/GnomeShell"
license=('GPL2')

depends=('gnome-shell' 'gtk3')
makedepends=('intltool' 'gnome-doc-utils' 'git' 'gnome-common')

provides=("${_realname}=${_realver}")
conflicts=("${_realname}")
options=(!libtool !emptydirs)
install=gnome-shell-extensions-git.install

_gitroot="git://git.gnome.org/gnome-shell-extensions"
_gitname="gnome-shell-extensions"


#PKGBUILD specific functions

_enabled_extensions="alternate-tab user-theme windowsNavigator dock auto-move-windows alternative-status-menu drive-menu"

#You may uncomment the extensions below, but they are working properly yet.
#_not_fully_working_extensions="xrandr-indicator"

build() {

    cd ${srcdir}/

    msg "Connecting to the GNOME GIT server..."
    if [[ -d ${srcdir}/${_gitname} ]] ; then
    	cd ${_gitname}
    	git pull origin
    	msg "The local files are updated..."
    else
    	git clone ${_gitroot} ${_gitname}
    fi

    msg "GIT checkout done."

    msg2 "Starting make for: ${pkgname}"

    if [[ -d ${srcdir}/${_gitname}-build ]]; then
       msg "Cleaning the previous build directory..."
       rm -rf ${srcdir}/${_gitname}-build
    fi

    git clone ${srcdir}/${_gitname} ${srcdir}/${_gitname}-build

    cd ${srcdir}/${_gitname}-build

    msg "Starting configure..."

    ./autogen.sh --prefix=/usr --enable-extensions="${_enabled_extensions}" "${_not_fully_working_extensions}"
    
    make
}

package()

{
    cd ${srcdir}/${_gitname}-build
    make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install

}

