# Maintainer: Florian Walch <florian dot walch at gmx dot at>

pkgname=pipe
pkgver=3.0
pkgrel=1
pkgdesc="Platform Independent Petri Net Editor."
arch=('any')
url="http://sourceforge.net/projects/pipe2/"
license=('custom')
depends=('java-runtime' 'sh')
makedepends=('unzip')
source=("http://downloads.sourceforge.net/project/pipe2/PIPE 3/Pipe $pkgver.zip" pipe LICENSE)
md5sums=('8095959e8fbd3c47747f0d2e0899163e'
         '3319ee5429838c6cd4866bde23ed2b3b'
         '7cf9b4e08660478ca4246e4333cecedd')

build() {
  cd $srcdir
  unzip -o "Pipe $pkgver.zip"
  rm -rf "$srcdir/Pipe $pkgver/src"

  # install files and executable
  install -d $pkgdir/usr/share/java/pipe
  cp -dr $srcdir/"Pipe $pkgver"/* $pkgdir/usr/share/java/pipe
  install -D $srcdir/pipe $pkgdir/usr/bin/pipe

  # install license
  install -D $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
