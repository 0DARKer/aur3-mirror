# Maintainer: Rodney Price <rod@thirdoption.info>
pkgname=datalog
pkgver=1.5
pkgrel=1
pkgdesc="A deductive database system for memory-constrained devices."
arch=('i686' 'x86_64')
url="http://www.ccs.neu.edu/home/ramsdell/tools/datalog/"
license=('LGPL')
groups=()
depends=()
provides=('datalog')
conflicts=()
options=()
install=datalog.install
source=('http://www.ccs.neu.edu/home/ramsdell/tools/datalog/datalog-1.5.tar.gz')
md5sums=('daa9e458fdf5b007626204359a45a881')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  make pdf
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  make DESTDIR="$pkgdir/" install-pdf
}

# vim:set ts=2 sw=2 et:
