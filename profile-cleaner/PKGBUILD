# Maintainer: graysky <graysky AT archlinux DOT us>

pkgname='profile-cleaner'
pkgver=1.97
pkgrel=1
pkgdesc='Reduces profile size by cleaning their sqlite databases. Supported apps: aurora, chromium, conkeror, firefox, google-chrome, heftig aurora, midori, and thunderbird.'
arch=('any')
url='https://github.com/graysky2/profile-cleaner'
license=('GPL')
depends=('sqlite' 'bc' 'findutils' 'parallel')
source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz")
install=readme.install
sha256sums=('92ec1dc1e8bcd5c2ae6435f6d486b4c9f247d1e284e9912ee5d1a133aa189558')

package() {
	cd "$srcdir/$pkgname-$pkgver"
	install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
	ln -s "$pkgname" "$pkgdir/usr/bin/pc"

	gzip -9 $pkgname.manpage
	install -Dm 0644 $pkgname.manpage.gz "$pkgdir/usr/share/man/man1/$pkgname.1.gz"
	ln -s "$pkgname.1.gz" "$pkgdir/usr/share/man/man1/pc.1.gz"
}
