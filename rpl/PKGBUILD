# Contributor: Douglas Thrift <douglas@douglasthrift.net>
pkgname=rpl
pkgver=1.4.1
pkgrel=7
pkgdesc="UN*X text replacement utility"
url="http://www.laffeycomputer.com/rpl.html"
license=("GPL")
arch=('i686' 'x86_64')
depends=('glibc')
source=("ftp://ftp2.laffeycomputer.com/pub/current_builds/$pkgname-$pkgver.tar.gz")
md5sums=('2eb9c18d97040dc301bfaa8aa70e21a4')

build() {
  cd "$srcdir/$pkgname-$pkgver"
#  patch -p1 < "$srcdir/rpl-1.4.0-gcc4.patch"
  ./configure --prefix=/usr
  make 
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR=$pkgdir install
    cd "$pkgdir/usr"
    mkdir -p "$pkgdir/usr/share/"
    mv "man/" "$pkgdir/usr/share/"
}
