# Contributor: Berseker <berseker86 at gmail dot com>


pkgname=tucan-svn

pkgver=1541
pkgrel=3
pkgdesc="Download and upload manager for hosting sites like JDownloader, but in GTK. SVN branch."
arch=('i686' 'x86_64')
url='http://tucaneando.com/index.html'
license=('GPL3')
depends=('python-imaging' 'python2' 'pygtk' 'tesseract' 'librsvg')
makedepends=('subversion')
provides=(tucan)
conflicts=(tucan)

_svntrunk=https://forja.rediris.es/svn/cusl3-tucan/branches/0.3.10/
_svnmod=tucan

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  # python2 fix
  sed -i 's_usr/bin/env python_usr/bin/env python2_' tucan.py
}

package() {

cd "$srcdir/$_svnmod-build"

make DESTDIR=$pkgdir/usr install
ln -sf /usr/share/tucan/tucan.py $pkgdir/usr/bin/tucan

}
