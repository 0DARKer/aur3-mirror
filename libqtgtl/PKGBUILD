#Maintainer: Andries Radu <admiral0@live.it>

pkgname=libqtgtl
pkgver=0.9.1
pkgrel=1
pkgdesc="Qt bindings to OpenGTL"
url="http://www.opengtl.org"
arch=('i686' 'x86_64')
depends=('llvm' 'opengtl')
license=('GPL')
makedepends=('cmake') 
source=(http://download.opengtl.org/libQtGTL-${pkgver}.tar.bz2)
md5sums=('8a4e694762495652e8d704e1226523e1')

build() {
  cd $srcdir
  mkdir build
  cd $srcdir/build
  cmake $srcdir/libQtGTL-${pkgver} -DCMAKE_INSTALL_PREFIX=/usr
  make 
}
package() {
  cd $srcdir/build
  make DESTDIR=${pkgdir} install
  rm -r $srcdir/build
}