# Maintainer: Andries Radu <admiral0@live.it>

pkgname=libqtgtl
pkgver=0.9.0
pkgrel=1
pkgdesc="Qt bindings to OpenGTL"
url="http://www.opengtl.org"
arch=('i686' 'x86_64')
depends=('llvm' 'opengtl')
license=('GPL')
makedepends=('cmake') 
source=(http://www.opengtl.org/download/libQtGTL-0.9.0.tar.bz2)
md5sums=('9a6b817496cee29bd11b641110ae775e')


build() {
  cd $srcdir/libQtGTL-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
