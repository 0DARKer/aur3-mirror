# Maintainer: Gabriel Peixoto <gabrielrcp@gmail.com>
pkgname=manga_downloader
pkgver=0.9
pkgrel=1
pkgdesc="Python script for downloading manga from varios websites"
arch=(any)
url="https://github.com/jiaweihli/manga_downloader"
license=('GPL3')
groups=()
depends=('python2')
source=('patch.patch')
md5sums=('15b4e525195f1c1e34aaeca39b542962')


_gitroot='https://github.com/jiaweihli/manga_downloader.git'
_gitname='manga_downloader'

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # patch python to python2
  # add a setup script
  # and stop the script to trying to save manga in /usr/bin
  patch -Np1 -i "$srcdir/patch.patch"
}


package() {

  cd "$srcdir/$_gitname-build/src"
  
  python2 setup.py install --root="$pkgdir/" --optimize=1
  install -Dm755 manga.py "$pkgdir/usr/bin/manga_downloader"
}
