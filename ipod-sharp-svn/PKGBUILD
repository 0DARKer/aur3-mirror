# Contributor:  cdude <cdude996@hotmail.com>
pkgname=ipod-sharp-svn
pkgver=76422
pkgrel=1
pkgdesc="provides high-level feature support for Apple's iPod and binds libipoddevice. ipod-sharp is written in C# under Mono"
url="http://banshee-project.org/Subprojects/Ipod-sharp"
license="GPL-2"
depends=('libipoddevice-svn')
makedepends=('subversion')
conflicts=('ipod-sharp')
provides=('ipod-sharp')
source=()
md5sums=()
arch=('i686')

_svntrunk=svn://anonsvn.mono-project.com/source/trunk/ipod-sharp
_svnmod=ipod-sharp

build() {
  export MONO_SHARED_DIR=$startdir/src/.wabi
  mkdir -p $MONO_SHARED_DIR

  cd $startdir/src

  svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  cd $_svnmod
  ./autogen.sh --prefix=/usr

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  make || return 1
  make DESTDIR=$startdir/pkg/ install

  rm -fr $MONO_SHARED_DIR
}
