#Contributor: Gergely Imreh <imrehg(at)gmail(dot)com>

pkgname=giggle-git
pkgver=20121109
pkgrel=1
pkgdesc="A graphical frontend for the git directory tracker - git checkout"
arch=('i686' 'x86_64')
url="http://live.gnome.org/giggle"
license=('GPL')
depends=('git' 'gtksourceview3' 'vte3')
options=(!libtool)
install=giggle.install
provides=('giggle')
conflicts=('giggle')

_gitroot="git://git.gnome.org/giggle"
_gitname="giggle"

build() {
	cd "${srcdir}"
	msg "Connecting to GIT server...."

	if [ -d ${_gitname} ] ; then
		cd ${_gitname} && git pull origin
		msg "The local files are updated."
	else
		git clone ${_gitroot}
		msg "GIT checkout done or server timeout"
	fi

	cd "${srcdir}"
	if [ -d "${_gitname}-build" ] ; then
		msg "Removing exisiting build directory"
		rm -r "${srcdir}/${_gitname}-build"
	fi
	msg "Creating new clone as build directory"
	git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
	cd "${srcdir}/${_gitname}-build"

	msg "Starting make..."

	./autogen.sh
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/${_gitname}-build"
	
	make prefix=${pkgdir}/usr install
	# this file shouldn't be here
	rm ${pkgdir}/usr/share/icons/hicolor/icon-theme.cache
}

