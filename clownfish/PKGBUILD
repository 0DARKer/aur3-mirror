pkgname=clownfish
pkgdesc="Free realtime language translator for skype"
url="http://clownfish-translator.com/"
pkgver=0.14
pkgrel=1
license=('CUSTOM')
depends=(skype)
source=(license clownfish.desktop)
md5sums=('07a09ef1a84ca347df40715fdd720d43'
         'c744dfdd0ed21a5eb1a7da06727cfb46')

case $CARCH in
	x86_64)
		source+=(http://clownfish-translator.com/getit/clownfish_amd64.tar.gz)
		md5sums+=('bc0049dc65ff6312c5755b8d5ca8e486')
		arch=x86_64
	;;
	i686)
		source+=(http://clownfish-translator.com/getit/clownfish.tar.gz)
		md5sums+=('6b076613d73d551c690fb602d12fc70e')
		arch=i686
	;;
esac

package() {
	install -d "$pkgdir/usr/bin"
	install -d "$pkgdir/usr/share/licenses/clownfish"
	install -d "$pkgdir/usr/share/applications"
	install -d "$pkgdir/usr/share/clownfish"
	
	install -m755 "$srcdir/clownfish" "$pkgdir/usr/bin/"
	install -m644 "$srcdir/clownfish.ico" "$pkgdir/usr/share/clownfish"
	install -m644 "$srcdir/license" "$pkgdir/usr/share/licenses/clownfish"
	install -m644 "$srcdir/clownfish.desktop" "$pkgdir/usr/share/applications/"
}
