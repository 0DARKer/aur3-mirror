# Maintainer: Martti KÃ¼hne <mysatyre at gmail dot com>

pkgname=kom
pkgver=0.9a_git04
pkgrel=2
pkgdesc="Interface library for ktoon, a 2D Animation Toolkit"
arch=('i686' 'x86_64')
url=http://www.ktoon.net/
license=(GPL)
depends=(ffmpeg 'qt>=4' ruby zlib aspell)
conflicts=("ktoon<$pkgver")
source=(http://download.berlios.de/ktoon/kom-${pkgver/_/-}.tar.gz)
md5sums=('43c37f930fed5c1d2fcb544553d7e70c')

build() {
  cd "$srcdir/$pkgname-${pkgver/_/-}"
  ./configure --prefix="$pkgdir/usr"
  rm qonf.pri
  make
  make install
}