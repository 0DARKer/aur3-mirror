# Maintainer: freetg <freetgm@gmail.org>

pkgname=python2-kivy
_pkgname=Kivy
pkgver=1.8.0
pkgrel=1
pkgdesc="A software library for rapid development of hardware-accelerated multitouch applications."
arch=('i686' 'x86_64')
url="http://kivy.org/"
license=('GPL3')
depends=('python2' 'cython2' 'python2-pygame')
makedepends=('python2' 'cython2')
source=(https://pypi.python.org/packages/source/K/${_pkgname}/${_pkgname}-${pkgver}.tar.gz)
sha1sums=('0dc2e7cf95c7f623cdc3403f275c3d021cb36a2d')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py build
    
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py install --root=${pkgdir}
}
