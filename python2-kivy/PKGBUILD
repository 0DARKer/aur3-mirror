# Maintainer: freetg <freetgm@gmail.com>

pkgname=python2-kivy
_pkgname=Kivy
pkgver=1.8.0
pkgrel=2
pkgdesc="A software library for rapid development of hardware-accelerated multitouch applications."
arch=('i686' 'x86_64')
url="http://kivy.org/"
license=('GPL3')
depends=('python2' 'python2-pygame')
makedepends=('python2' 'python2-pip')
source=('https://pypi.python.org/packages/source/K/Kivy/Kivy-1.8.0.tar.gz')
sha1sums=('0dc2e7cf95c7f623cdc3403f275c3d021cb36a2d')

build() {
  sudo pip2 install -Iv http://cython.org/release/Cython-0.20.2.tar.gz
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py install --root=${pkgdir}
}
