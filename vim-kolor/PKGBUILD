# Maintainer: graysky <graysky AT archlinux DOT us>

pkgname=vim-kolor
_pkgname=kolor
pkgver=1.3.0
_scriptid=4339
pkgrel=1
pkgdesc="Vim color scheme with high text readability and optimal visibility of every element."
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=4339"
depends=('vim')
license=('GPL')
source=(kolor.vim::"http://www.vim.org/scripts/download_script.php?src_id=$_scriptid")
sha256sums=('122ac80e4b0457c384dcf1a18ad5f23ba62be6b32875158de6313199cf703fad')

package() {
  cd "$srcdir"
  installpath="$pkgdir/usr/share/vim/vimfiles"

  install -D -m644 $_pkgname.vim "$pkgdir/usr/share/vim/vimfiles/colors/$_pkgname.vim"
}
