pkgname=vim-kolor
_pkgname=kolor
pkgver=1.3.0
_scriptid=4339
pkgrel=3
pkgdesc="Vim color scheme with high text readability and optimal visibility of every element."
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=4339"
license=('MIT')
depends=('vim')
license=('GPL')
source=(kolor.vim::"http://www.vim.org/scripts/download_script.php?src_id=$_scriptid"
"https://github.com/zeis/vim-kolor/blob/master/LICENSE")
sha256sums=('1a1a47686e51d19d30513588d0bd96f7ef9d1b03cbfe2844efc9f3a5cc8960a6'
            '59520279388aa964cc30bcece684c96bd3ccadef5010cce31c306056197efc7e')

package() {
  install -Dm644 $_pkgname.vim "$pkgdir/usr/share/vim/vimfiles/colors/$_pkgname.vim"
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${_pkgname}/LICENSE"
}
