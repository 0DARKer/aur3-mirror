pkgname=rinse
pkgver=1.7
pkgrel=3
pkgdesc="Bootstrap a rpm based distribution like debootstrap"
arch=('i686' 'x86_64')
url="http://xen-tools.org/software/rinse/index.html"
license=('GPL')
groups=()
depends=('glibc' 'perl-lwp-simple' 'rpm2cpio' 'wget')
makedepends=('make')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('/etc/rinse/rinse.conf')
options=()
install=
source=(http://xen-tools.org/software/rinse/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('a3f1fea64475099e2ae8599f0ef0030a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make PREFIX="$pkgdir/" install
}
