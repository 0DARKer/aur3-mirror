pkgname=rinse
pkgver=1.9.1
pkgrel=1
pkgdesc="Bootstrap a rpm based distribution like debootstrap"
arch=('any')
url="http://xen-tools.org/software/rinse/index.html"
license=('GPL')
groups=()
depends=('glibc' 'perl' 'perl-html-parser' 'perl-uri' 'perl-libwww' 'rpm2cpio' 'wget' 'rpm')
makedepends=('make')
optdepends=()
provides=()
conflicts=()
replaces=()
#backup=('/etc/rinse/rinse.conf')
options=()
install=
source=(http://xen-tools.org/software/rinse/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('452be5a3ee43efab1a3a38fb6a0d457a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make PREFIX="$pkgdir/" install
}
