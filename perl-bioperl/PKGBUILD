# CPAN Name  : BioPerl
# Contributor: Anonymous
# Generator  : CPANPLUS::Dist::Arch 1.11

pkgname='perl-bioperl'
pkgver='1.6.1'
pkgrel='1'
pkgdesc="Bioinformatics Toolkit"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=v5.6.1' 'perl-data-stag>=0.11' 'perl-io-string')
makedepends=()
url='http://search.cpan.org/dist/BioPerl'
source=('http://search.cpan.org/CPAN/authors/id/C/CJ/CJFIELDS/BioPerl-1.6.1.tar.gz')
md5sums=('aa88f122c10714fd27beea4b70b659ad')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/BioPerl-1.6.1"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  cd "$DIST_DIR"
  $PERL Makefile.PL
  make
  make test
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

