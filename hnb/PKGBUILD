# Contributor: Erol V. Aktay <e.aktay@gmail.com>
pkgname=hnb
pkgver=1.9.17
pkgrel=3
pkgdesc="A program to organize many kinds of data in one place."
arch=('i686' 'x86_64')
url="http://hnb.sourceforge.net"
license="GPL"
depends=('ncurses')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('c73b5f63d8ffe1976c915c1f8265951d')

build() {
  cd $startdir/src/$pkgname-$pkgver

  make || return 1

  install -D src/hnb $startdir/pkg/usr/bin/hnb || return 1
  install -D -m444 doc/hnb.1 $startdir/pkg/usr/man/man1/hnb.1 || return 1
}
