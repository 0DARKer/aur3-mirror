# Contributor: Erol V. Aktay <e.aktay@gmail.com>

pkgname=hnb
pkgver=1.9.17
pkgrel=4
pkgdesc="Ncurses based hierarchical notebook to structure many kinds of data in one place."
arch=('i686' 'x86_64')
url="http://hnb.sourceforge.net"
license="GPL"
depends=('ncurses')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('c73b5f63d8ffe1976c915c1f8265951d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir"
  install -D src/hnb $pkgdir/pkg/usr/bin/hnb
  install -D -m444 doc/hnb.1 $pkgdir/pkg/usr/share/man/man1/hnb.1
}
