# Maintainer: TryA <tryagainprod@gmail.com>

pkgname=firefox32-i18n
pkgver=4.0
pkgrel=2
pkgdesc="Language packs for Firefox32"
arch=('x86_64')
license=('MPL')
url="http://www.mozilla.com/projects/firefox"
depends=('firefox32')
source=("ftp://ftp.archlinux.org/extra/os/i686/firefox-i18n-${pkgver}-${pkgrel}-any.pkg.tar.xz")
install=i18n.install
md5sums=('42b4160fb020ab05f06f6559b952361b')

build() {
  mkdir -p ${pkgdir}/opt/firefox32
  cp -r ${srcdir}/usr/lib/firefox-4.0/extensions ${pkgdir}/opt/firefox32/
}
