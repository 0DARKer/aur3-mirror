# Maintainer: Glen Oakley <goakley123@gmail.com>

pkgname=twine
pkgrel=1
pkgver=1.4.1
pkgdesc="Twine is an open-source tool for telling interactive, nonlinear stories."
arch=(any)
url="http://twinery.org/"
license=('GPL')
groups=()
depends=('python2' 'wxpython')
makedepends=('unzip')
provides=()
conflicts=('twine-git')
replaces=()
backup=()
options=()
install=
noextract=()
source=(https://github.com/tweecode/twine/archive/v1.4.1.zip)
sha512sums=('05ef1fb1486afe51dfca3eece2d49db328cc0bd623346439dcfeb1f1de691781ffc42ba52369e98516765b0e8561075022f0e8b30514ba734e7fd0760fd17705')

package() {
  mkdir -p "$pkgdir/opt/"
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/share/licenses"
  cp -r "$srcdir/$pkgname-$pkgver" "$pkgdir/opt/twine"
  echo -e '#!/bin/bash\ncd /opt/twine && python2 app.py' > "$pkgdir/usr/bin/twine"
  chmod +x "$pkgdir/usr/bin/twine"
  echo -e '#!/bin/bash\ncd /opt/twine && python2 twee' > "$pkgdir/usr/bin/twee"
  chmod +x "$pkgdir/usr/bin/twee"
  cp "$srcdir/$pkgname-$pkgver/gpl.txt" "$pkgdir/usr/share/licenses/LICENSE"
}

# vim:set ts=2 sw=2 et:
