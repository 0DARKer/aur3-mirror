# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=nodejs-roots
_npmname=roots
pkgver=1.1.1
pkgrel=1
pkgdesc="Toolbox for building simple, beautiful, and efficient products for the web"
arch=('any')
depends=('nodejs')
url="https://npmjs.org/package/roots"
license=('MIT')
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha256sums=('1e50ae3933f19abc093b2e34ffeca7ad98c6fe263fcf2f0cba859441927abbcd')
provides=('nodejs-roots')

build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
