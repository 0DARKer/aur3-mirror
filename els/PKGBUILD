# Maintainer: Limao Luo <luolimao+AUR@gmail.com>

pkgname=els
pkgver=1.51c1
pkgrel=1
pkgdesc="An Enhanced LS look-alike with many additional features"
arch=(i686 x86_64)
url=http://els-software.org
license=(GPL)
source=($url/$pkgname/release/$pkgname-$pkgver.tar.gz)
sha256sums=('db15b589c1a2236f5cb96899f2db1bca1ac2d2db22c9d2ef5f69342fe4eaffa2')
sha512sums=('7b1700250dfb8a637d46212d4fecf32b46edf3ccd9133be8309883eb8eeeab4305e36e4a3243122e7a3d51ce9f5299e4cb6d40d6b25779614f45cbde73bc8f1c')

build() {
    cd "$srcdir"/$pkgname-$pkgver/
    make Linux
}

package() {
    cd "$srcdir"/$pkgname-$pkgver/
    for i in $pkgname chdate edate; do
        install -Dm755 $i "$pkgdir"/usr/bin/$i
        install -Dm644 $i.1 "$pkgdir"/usr/share/man/man1/$i.1
    done
}
