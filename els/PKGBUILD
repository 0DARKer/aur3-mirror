# Contributor: Michael Blum <michaeldblum@earthlink.net>
pkgname=els
pkgver=1.49e1
pkgrel=1
pkgdesc="An Enhanced LS look-alike with many additional features"
url="http://els-software.org"
depends=('glibc')
license=('GPL')
makedepends=(gcc)
source=(http://els-software.org/els/release/$pkgname-$pkgver.tar.gz)
md5sums=('93b2e78a651ea0c7f4df271cd3bec273')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make CFLAGS="$CFLAGS" linux || return 1
  BINDIR=$startdir/pkg/usr/bin
  [[ -d $BINDIR ]] || mkdir -p $BINDIR
  MANEXT=1
  MANDIR=$startdir/pkg/usr/man/man$MANEXT
  [[ -d $MANDIR ]] || mkdir -p $MANDIR
  make BINDIR=$BINDIR MANDIR=$MANDIR install
  SHRDIR=$startdir/pkg/usr/share/$pkgname
  [[ -d $SHRDIR ]] || mkdir -p $SHRDIR
  cp USER_GUIDE $SHRDIR
}
