pkgname=lstv
pkgver=0.0.1
pkgrel=1
pkgdesc="DVB channel selector for mplayer."
arch=(any)
depends=(mplayer)
source=("http://master.dl.sourceforge.net/project/lstv/lstv-0.0.1.tar.gz/$pkgname-$pkgver.tar.gz")
optdepends=(w_scan)
md5sums=("5ad21d52ee7a03773136921563ef3738")
url=("https://sourceforge.net/projects/lstv/")

package() {
  install -d "$pkgdir/usr/local/bin"
  install -m755 "$srcdir/$pkgname-$pkgver/lstv" "$pkgdir/usr/local/bin"

}

post_install() {
echo The «lstv» script was installed into /usr/local/bin 
}


post_upgrade() {
  post_install
}

post_remove() {
  post_install
}

