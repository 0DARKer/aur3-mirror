# Maintainer: jeneshicc <jeneshicc@gmail.com>
pkgname=ttf-migmix
pkgver=20110207
pkgrel=1
pkgdesc="Japanese TrueType font obtained by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migmix/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://dl.sourceforge.jp/mix-mplus-ipa/50858/MigMix-1P-${pkgver}.zip
	http://dl.sourceforge.jp/mix-mplus-ipa/50858/MigMix-1M-${pkgver}.zip
	http://dl.sourceforge.jp/mix-mplus-ipa/50858/MigMix-2P-${pkgver}.zip
	http://dl.sourceforge.jp/mix-mplus-ipa/50858/MigMix-2M-${pkgver}.zip)
build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/*/*.ttf ${pkgdir}/usr/share/fonts/TTF/

  # install license files
  cd ${srcdir}/MigMix-1P-${pkgver}
  install -d ${pkgdir}/usr/share/licenses/${pkgname}/
  install -m644 MigMix-README.txt ${pkgdir}/usr/share/licenses/${pkgname}/
  for  dir in ipag00302 mplus-TESTFLIGHT-036
  do
  	install -d ${pkgdir}/usr/share/licenses/${pkgname}/${dir}
  	install -m644 ${dir}/* ${pkgdir}/usr/share/licenses/${pkgname}/${dir}
  done
}

md5sums=('7e242072cf5136648adc88be79255ce7'
         '335d6d7a43b9b51b5bff832dd3c7f4e9'
         'bfbdb5b6db9bdb409b26e39751370174'
         'c64208c22d0bd2f1f6dac8cd18739530')
