pkgname=ttf-migmix
pkgver=20111002
pkgrel=1
pkgdesc="Japanese TrueType font obtained by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migmix/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://dl.sourceforge.jp/mix-mplus-ipa/53388/migmix-1p-${pkgver}.zip
	http://dl.sourceforge.jp/mix-mplus-ipa/53388/migmix-1m-${pkgver}.zip
	http://dl.sourceforge.jp/mix-mplus-ipa/53388/migmix-2p-${pkgver}.zip
	http://dl.sourceforge.jp/mix-mplus-ipa/53388/migmix-2m-${pkgver}.zip)
build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/*/*.ttf ${pkgdir}/usr/share/fonts/TTF/

  # install license files
  cd ${srcdir}/migmix-1p-${pkgver}
  install -d ${pkgdir}/usr/share/licenses/${pkgname}/
  install -m644 migmix-README.txt ${pkgdir}/usr/share/licenses/${pkgname}/
  for  dir in ipag00303 mplus-TESTFLIGHT-043
  do
  	install -d ${pkgdir}/usr/share/licenses/${pkgname}/${dir}
  	install -m644 ${dir}/* ${pkgdir}/usr/share/licenses/${pkgname}/${dir}
  done
}
md5sums=('ddb640d8b901d7b8c24b9efd9a375a95'
         '5bb75f8ecc511cd34f3d59e9c81b9cef'
         '0e6c9fa8a8b6d8110db6af8f6582b82a'
         'a0cac9560f3e59bbd4ce78d0fbdbbde5')
