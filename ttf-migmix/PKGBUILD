# Contributor: noonov <noonov@gmail.com>

pkgname=ttf-migmix
pkgver=20130430
pkgrel=1
pkgdesc="Japanese TrueType font obtained by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migmix/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
_mirror="jaist" # keihanna, jaist, iij, osdn
source=(http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/58721/migmix-1m-${pkgver}.zip
        http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/58721/migmix-1p-${pkgver}.zip
        http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/58721/migmix-2m-${pkgver}.zip
        http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/58721/migmix-2p-${pkgver}.zip)
md5sums=('76fe761b8d6e93602f95ad8946e3cff0'
         'f3836191a0afcb8653d114ecfa0adf8b'
         'bd0197f59f550bc3e7710348f7dc8803'
         '230fe50700f5f1053ede000011238e07')

package() {
  cd ${srcdir}

  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 */*.ttf ${pkgdir}/usr/share/fonts/TTF

  install -D -m644 migmix-1m-*/migmix-README.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/COPYING.txt
  install -D -m644 migmix-1m-*/ipag00303/IPA_Font_License_Agreement_v1.0.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/COPYING_IPA.txt
}
