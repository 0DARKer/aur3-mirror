# Maintainer: jeneshicc <jeneshicc@gmail.com>
pkgname=ttf-migmix
pkgver=20100626
pkgrel=1
pkgdesc="Japanese TrueType font obtained by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migmix/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://dl.sourceforge.jp/mix-mplus-ipa/48024/MigMix-1P-1M-${pkgver}.zip
        http://dl.sourceforge.jp/mix-mplus-ipa/48024/MigMix-2P-2M-${pkgver}.zip)
build() {
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/*/*.ttf ${pkgdir}/usr/share/fonts/TTF/

  # install license files
  cd ${srcdir}/MigMix-1P-1M-${pkgver}
  install -d ${pkgdir}/usr/share/licenses/${pkgname}/{IPAfont00302,mplus-TESTFLIGHT-030}
  install -m644 README.txt ${pkgdir}/usr/share/licenses/${pkgname}/
  install -m644 IPAfont00302/* ${pkgdir}/usr/share/licenses/${pkgname}/IPAfont00302
  install -m644 mplus-TESTFLIGHT-030/* ${pkgdir}/usr/share/licenses/${pkgname}/mplus-TESTFLIGHT-030
}
md5sums=('08442d1062bbe63e741667f2a6ee8c3e'
         '7c9c57121eecbdad793b1d5e8809dd8c')
