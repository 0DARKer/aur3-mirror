# Contributor: noonov <noonov@gmail.com>

pkgname=ttf-migmix
pkgver=20121030
pkgrel=1
pkgdesc="Japanese TrueType font obtained by mixing M+ and IPA."
arch=('any')
url="http://mix-mplus-ipa.sourceforge.jp/migmix/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
_mirror="iij" # keihanna, jaist, iij, osdn
source=(http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/57239/migmix-1m-${pkgver}.zip
        http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/57239/migmix-1p-${pkgver}.zip
        http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/57239/migmix-2m-${pkgver}.zip
        http://${_mirror}.dl.sourceforge.jp/mix-mplus-ipa/57239/migmix-2p-${pkgver}.zip)
md5sums=('d442b3e1617774e3f902d947eb022735'
         'fa7fde80c56c16da1b5d7c408eddbe59'
         '6e0d890ccc134cbb1ab679eb29f0072c'
         '3a4785f0eda18f603e2c61f86c669755')

package() {
  cd ${srcdir}

  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 */*.ttf ${pkgdir}/usr/share/fonts/TTF

  install -D -m644 migmix-1m-*/migmix-README.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/COPYING.txt
  install -D -m644 migmix-1m-*/ipag00303/IPA_Font_License_Agreement_v1.0.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/COPYING_IPA.txt
}
