pkgname=codeslayer
pkgver=1.5.1
pkgrel=1
pkgdesc="CodeSlayer is a source code editor that boasts a clean interface but powerful features."
arch=('i686' 'x86_64')
url="http://code.google.com/p/codeslayer/"
license=('GPL')
depends=('gtk2' 'gtksourceview2')
install=$pkgname.install
source=(http://codeslayer.googlecode.com/files/$pkgname-$pkgver.tar.gz
        $pkgname.desktop $pkgname.install)
options=(!buildflags)
md5sums=('2373debfc8e55a1a0125d8aa0c821406' 
        'afb0bcae54b30b4801f1a212a5d875d9'
        'd54dd5428261745f7fb44b51f4ecc57e')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --mandir=/usr/share/man || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  install -D -m644 ../$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}

