# Maintainer: Leo von Klenze <aur@leo.von-klenze.de>
pkgname=dijit
pkgver=1.5.0
pkgrel=1
pkgdesc="Skinnable, template-driven widgets with accessibility and localization built right inâ€”the way you want it."
arch=(i686 x86_64)
url="http://www.dojotoolkit.org"
license=('BSD' 'Academic Free License')
depends=('dojo')
source=(http://download.dojotoolkit.org/release-$pkgver/dojo-release-$pkgver.tar.gz)
md5sums=('f067c5454d8ef3436d24c9d58017bd22')

build() {
    mkdir -p $pkgdir/opt/dojotoolkit
    cd $srcdir/dojo-release-$pkgver || return 1 

    find $pkgname -type f | while read file; do
        install -Dm644 "$file" "$pkgdir/opt/dojotoolkit/$file" || return 1
    done || return 1
}

