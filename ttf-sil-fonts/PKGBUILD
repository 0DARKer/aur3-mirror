pkgname=ttf-sil-fonts
pkgver=5
pkgrel=1
pkgdesc="A collection of OFL-licensed fonts from SIL"
arch=('i686' 'x86_64')
url="http://scripts.sil.org/OFL_fonts"
license=('custom:OFL')
depends=('fontconfig' 'xorg-font-utils')
conflicts=('ttf-sil-gentium')
provides=('ttf-sil-gentium')
install=ttf.install
source=('abyssinica.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=AbyssinicaSIL1.0.zip&filename=AbyssinicaSIL1.0.zip'
	'andica-ab.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=Andika_Design_Review&filename=Andika_Design_Review.zip'
	'andica-cg.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=Andika_Design_Review_CthruG&filename=Andika_Design_Review_CthruG.zip'
	'charis.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=CharisSIL4.100.zip&filename=CharisSIL4.100.zip'
	'daibanna.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=DaiBanna-2.0_beta.zip&filename=DaiBanna-2.0_beta.zip'
	'doulos.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=DoulosSIL4.100.zip&filename=DoulosSIL4.100.zip'
	'gentium.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=Gentium_102_L_tar&filename=%2Fttf-sil-gentium_1.0.2.tar.gz'
	'padauk.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=MH_Padauk_tarball&filename=padauk_2_1.tar.gz'
	'namlwin.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=NamLWin&filename=NamLWin.zip'
	'OFL.txt::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=OFL_plaintext&filename=OFL.txt'
	'OFL3.2.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=SILVai32OFL_zip&filename=SILVaiOFL3.2.zip'
	'OFL1.2.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=SILYi12OFL_zip&filename=SILYiOFL1.2.zip'
	'zaghawa.zip::http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=ZaghawaBeriaTTF&filename=ZaghawaBeriaTTF.zip')
md5sums=('b63c5b9bbd2341a093c27f1253cc0ba3' 'c405504bb4a078b2e4f23166c1a5945e'
         '3c09c1e650e6297f72ffa04c70ab909c' 'b4fe96ce17acc58744027acd4298d198'
         '8ef485439cd846df100fcfb1ca95a4db' '0f043d34dd190259b64d57a501173c92'
         '4c3e6ae586be277537ebb68f2a45b883' '106e5ac364dfa2bb5329913bf26b1bd5'
         'fb70c22195597849241b7283040dcd42' '6ed93967ff0dc6dd9c8d31c17f817a06'
         '3b4ac506b3ee6d60c9884c3f38613725' '0f8019a72f4ae011ff6465b433a56e3a'
         '876882bb41d1efef28b0a4985ff473f8')

build() {
  install -d  ${startdir}/pkg/usr/share/fonts/TTF
  
  # Font installation
  install -m644 ${startdir}/src/*.ttf ${startdir}/pkg/usr/share/fonts/TTF
  install -m644 ${startdir}/src/*/*.ttf ${startdir}/pkg/usr/share/fonts/TTF

  # License installation
  install -d ${startdir}/pkg/usr/share/licenses/${pkgname}
  install -m644 ${startdir}'/src/OFL.txt' ${startdir}/pkg/usr/share/licenses/${pkgname}/LICENSE
} 
