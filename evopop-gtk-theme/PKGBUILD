# Maintainer: Michael Wendland <michael@michiwend.com>

pkgname=evopop-gtk-theme
pkgver=0.20
pkgrel=1
pkgdesc="A simple, flat and bold Gtk theme for Evolve OS & Budgie Desktop. Iris Dark was used as base."
arch=('any')
url="https://github.com/poltertec/evopop-gtk-theme"
license=('GPL3')
groups=()
depends=('gtk3')
makedepends=()
optdepends=()
provides=('evopop-gtk-theme', 'evopop-light-gtk-theme')
conflicts=('evopop-gtk-theme-git', 'evopop-gtk-theme')
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/poltertec/$pkgname/archive/$pkgver.tar.gz")
noextract=()
sha256sums=('910e2547cdb2edb44054da782ba6efcfd3239ad975b768e97f1dc7a5fb630f47') #autofill using updpkgsums


package() {
  cd "$pkgname-$pkgver"
 
  install -d ${pkgdir}/usr/share/themes

  for f in $(find * -prune -type f); do
    rm -f $f;
  done

  cp -r * ${pkgdir}/usr/share/themes
}

