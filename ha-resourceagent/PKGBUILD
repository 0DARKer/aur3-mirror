# Maintainer: Lucio zara <pennegaatgmaildotcom>

pkgname=ha-resourceagent
pkgver=1.0.3
pkgrel=1
pkgdesc="A standardized interface for a cluster resource"
arch=('i686' 'x86_64')
url="http://linux-ha.org/wiki/Resource_Agents"
license=('GPL')
depends=('ha-glue')
source=("http://hg.linux-ha.org/agents/archive/agents-${pkgver}.tar.bz2")
md5sums=('fcaa2cfd83a28d1965200e11db2ddd41')

build() {
	CLUSTER_USER=hacluster
	CLUSTER_GROUP=haclient
	PREFIX=/usr
	PREFIXETC=/etc
	PREFIXINIT=${PREFIXETC}/rc.d
	PREFIXVAR=/var
	cd "${srcdir}/Cluster-Resource-Agents-agents-${pkgver}"
	./autogen.sh
	./configure \
		--prefix=$PREFIX 					\
		--localstatedir=${PREFIXVAR} 		\
		--sysconfdir=${PREFIXETC}			\
		--with-initdir=${PREFIXINIT}		
	make || return 1
	make DESTDIR="${pkgdir}" install || return 1
}
	

