# Generator  : CPANPLUS::Dist::Arch 0.16
pkgname='perl-aliased'
pkgver='0.30'
pkgrel='1'
pkgdesc="Use shorter versions of class names."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/aliased'
source=('http://search.cpan.org/CPAN/authors/id/O/OV/OVID/aliased-0.30.tar.gz')
md5sums=('8c2ee486901dae7d1c31e9a2d69c6c8f')

build() {
  _DISTDIR="${srcdir}/aliased-0.30"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
