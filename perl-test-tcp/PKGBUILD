# Contributor: Christian Sturm <reezer@reezer.org>
pkgname=perl-test-tcp
pkgver=1.11
pkgrel=1
pkgdesc="testing TCP program"
arch=(any)
url="http://search.cpan.org/dist/Test-TCP/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' perl-filter perl-test-shared-fork)
options=(!emptydirs)
install=
source=(http://search.cpan.org/CPAN/authors/id/T/TO/TOKUHIROM/Test-TCP-$pkgver.tar.gz)
md5sums=('9dd3f0e3f4a8e2fb697180492418ac8c')

build() {
  cd "$srcdir/Test-TCP-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name perllocal.pod -delete
  find "$pkgdir" -name .packlist -delete
}

# vim:set ts=2 sw=2 et:
