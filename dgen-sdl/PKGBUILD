pkgname=dgen-sdl
pkgver=1.30
pkgrel=1
pkgdesc="DGen is a free, open source emulator for Sega Genesis/MegaDrive systems"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/dgen/"
license=('BSD')
depends=('sdl' 'nasm')
source=(http://downloads.sourceforge.net/dgen/${pkgname}-${pkgver}.tar.gz)
md5sums=('df63f2f1aa317f8bf682a1a551920a9a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  make DESTDIR="$pkgdir" install
}
