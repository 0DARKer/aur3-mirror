pkgname=dgen-sdl
pkgver=1.25
pkgrel=24
pkgdesc="DGen is a free, open source emulator for Sega Genesis/MegaDrive systems"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/dgen/"
license=('BSD')
depends=('sdl' 'nasm')
source=(http://downloads.sourceforge.net/dgen/${pkgname}-${pkgver}.tar.gz)
md5sums=('7910d7b9756481a528dc65c80ff0befb')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # FIXME LDFLAGS="" wtf
  LDFLAGS="" ./configure --prefix=/usr
  make
  make DESTDIR="$pkgdir" install
}
