# Maintainer: Beej Jorgensen <beej@beej.us>
pkgname=gprojector
pkgver=1.5.1
pkgrel=1
pkgdesc="G.Projector can transform an equirectangular map image into many global and regional map projections"
arch=('any')
url="http://www.giss.nasa.gov/tools/gprojector/"
license=('unknown')
depends=('java-runtime')
source=('http://www.giss.nasa.gov/tools/gprojector/GProjectorJ.tgz' 'gprojector')
md5sums=('000dd256e6c0aa42ec8b8c76ce0406ca'
         '5afa4c5674eaaf9277b627943aac9d40')

package() {
	install -m 755 -d $pkgdir/opt
	cp -r $srcdir/G.ProjectorJ $pkgdir/opt/gprojector

	install -m 755 -d $pkgdir/usr/bin
	install -m 755 $srcdir/gprojector $pkgdir/usr/bin/gprojector
}
