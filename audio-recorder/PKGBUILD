pkgname=audio-recorder
pkgver=0.9.8
pkgrel=1
pkgdesc="Audio recorder for GNOME"
arch=('i686' 'x86_64')
url="https://launchpad.net/audio-recorder"
license=('GPL')
groups=('multimedia')
depends=('hicolor-icon-theme' 'dconf' 'libgnome-media-profiles' 'gstreamer0.10-good-plugins' 'gstreamer0.10-ugly-plugins' 'gstreamer0.10-bad-plugins')
provides=('audio-recorder')
conflicts=('audio-recorder-bzr' 'audio-recorder-from-deb')
source=("https://launchpad.net/$pkgname/trunk/version$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('3c2bb27c88eded21d76c4150af3603ad')

build() {
  cd "$srcdir/$pkgname"
  #cp /usr/share/automake-1.12/config.sub .
  #cp /usr/share/automake-1.12/config.guess .
  #sed -i 's|#\(AC_CONFIG_HEADER.*\)|\1|' configure.in
  #autoconf -f
  aclocal
  autoconf -f
  automake -a
  ./configure --prefix=/usr
  make
}

check() {
  cd "$srcdir/$pkgname"
  make clean
  make -k check
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir/" install
}
