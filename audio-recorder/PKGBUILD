pkgname=audio-recorder
pkgver=1.1
pkgrel=1
pkgdesc="An audio recorder application for the GNOME 3 and Ubuntu's Unity Desktops"
arch=('i686' 'x86_64')
url='https://launchpad.net/audio-recorder'
license=('GPL3')
groups=('multimedia')
depends=('gst-plugins-base' 'gst-plugins-good' 'gtk3' 'hicolor-icon-theme' 'pulseaudio')
makedepends=('intltool')
optdepends=('gst-plugins-ugly: for MP3 support'
	        'libappindicator3: for indicator applet support')
provides=('audio-recorder')
install="$pkgname.install"
conflicts=('audio-recorder-bzr' 'audio-recorder-from-deb')
source=("https://launchpad.net/$pkgname/trunk/version$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('8d0db9be446a28ef0f010f1a8f30485a')

build() {
  cd "$srcdir/$pkgname"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir/" install
}
