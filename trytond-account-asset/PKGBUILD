pkgname=trytond-account-asset
_pkgname=trytond_account_asset
pkgver=2.8.0
_pkgdir=2.8
pkgrel=1
pkgdesc="The account_asset module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.8' 'trytond-account>=2.8' 'trytond-product>=2.8' 'trytond-account-invoice>=2.8')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("4163fc4931c70ceaa8d6f42f439f9f7e")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}