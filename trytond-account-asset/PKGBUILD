# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-account-asset
_pkgname=trytond_account_asset
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The account_asset module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-account>=3.2' 'trytond-product>=3.2' 'trytond-account-invoice>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("62b4e64bdf5d18d43efa4c4d03be6ab8")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}