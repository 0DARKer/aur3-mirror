# Contributor: Franz Burgmann <f dot burgmann at gmail dot com>

pkgname=convirt
pkgver=1.1
pkgrel=2
pkgdesc="A graphical Virtualization management tool for KVM and Xen."
arch=('i686' 'x86_64')
url="http://www.convirture.com/"
license=('GPLv2')
groups=()
depends=('python-paramiko' 'openssh' 'socat' 'xen')
makedepends=()
source=("http://www.convirture.com/downloads/convirt/$pkgver/convirt-$pkgver.tar.gz" "http://www.convirture.com/wiki/images/6/68/Patch_cumulative_convirt_9_oct_09.txt")
md5sums=('d7b1b6e29e75b5b85bed2d75b34b285e'
'db8284fbe57f1918e9c87a41757750c2')


build() {
  cd "$srcdir/convirt-$pkgver"

  # add the 1.1 Cumulative Patch
  patch -p0 < $srcdir/Patch_cumulative_convirt_9_oct_09.txt
  
  mkdir -p $pkgdir/var/cache/convirt || return 1
  cp -a appliance_store image_store $pkgdir/var/cache/convirt || return 1

  mkdir -p $pkgdir/usr/share/doc/convirt-$pkgver || return 1
  cp -a doc $pkgdir/usr/share/doc/convirt-$pkgver || return 1

  mkdir -p $pkgdir/usr/share/convirt || return 1
  cp -a  ConVirt src install storage doc $pkgdir/usr/share/convirt || return 1
 
  mkdir -p $pkgdir/etc || return 1
  cp -a install/client/distros/ubuntu/convirt.conf $pkgdir/etc || return 1

  mkdir -p $pkgdir/usr/bin || return 1
  cd $pkgdir/usr/bin || return 1
  ln -s ../share/convirt/ConVirt convirt || return 1
}
