# Maintainer: Sandro Dias Pinto Vitenti <sandro@isoftware.com.br>

pkgname=numcosmo
pkgver=20120917
pkgrel=1
pkgdesc="A Library for Cosmology calculations"
url="https://savannah.nongnu.org/projects/numcosmo/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('glib' 'gsl' 'gmp' 'mpfr' 'sundials' 'sqlite3' 'fftw' 'nlopt' 'cfitsio' 'gtk-doc' 'libcuba')
optdepends=('atlas-lapack' 'levmar')
provides=('numcosmo')
conflicts=('numcosmo')
source=()
md5sums=()

_gitroot="git://git.savannah.nongnu.org/numcosmo.git"
_gitname="${pkgname}"

build() {
  NCPU=`grep processor /proc/cpuinfo | wc -l`

  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  mkdir "$srcdir/$_gitname-build"

  msg "Running autogen.sh ..."
  cd "$srcdir/$_gitname"
  NOCONFIGURE=yes ./autogen.sh
  
  msg "Configuring ..."
  cd "$srcdir/$_gitname-build"
  "$srcdir/$_gitname"/configure --prefix=/usr --enable-shared --with-thread-pool-max=$NCPU
}

package() {
  cd $srcdir/$pkgname-build
  make DESTDIR=$pkgdir install
}
