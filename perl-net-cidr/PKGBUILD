# Generator  : CPANPLUS::Dist::Arch 0.14
pkgname='perl-net-cidr'
pkgver='0.13'
pkgrel='1'
pkgdesc="Manipulate netblock lists in CIDR notation"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Net-CIDR'
source=('http://search.cpan.org/CPAN/authors/id/M/MR/MRSAM/Net-CIDR-0.13.tar.gz')
md5sums=('40f0f42104b314af91ab78119e0096de')

build() {
  _DISTDIR="${srcdir}/Net-CIDR-0.13"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -delete
  find "$pkgdir" -name perllocal.pod -delete
}
