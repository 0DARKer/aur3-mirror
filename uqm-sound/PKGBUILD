# Contributor : sh__

pkgname=uqm-sound
pkgver=0.6.0
pkgrel=1
arch=(any)
pkgdesc="Optional sound package for Ur-Quan Masters (uqm)"
url="http://sc2.sf.net/"
license=(GPL)
depends=(uqm)
source=(http://downloads.sourceforge.net/sourceforge/sc2/uqm-${pkgver}-voice.uqm
	http://downloads.sourceforge.net/sourceforge/sc2/uqm-${pkgver}-3domusic.uqm)
md5sums=('d31577b896be935cc2238afd07299b8b' 'a20cacc8e66f5ff1fdf5e1d3a3b93fd2')

conflicts=('uqm-3domusic' 'uqm-voice')
provides=('uqm-3domusic' 'uqm-voice')

build() { 
  cd $srcdir

  install -Dm644 uqm-${pkgver}-voice.uqm \
  $pkgdir/usr/share/uqm/content/packages/uqm-${pkgver}-voice.uqm

  install -Dm644 uqm-${pkgver}-3domusic.uqm \
  $pkgdir/usr/share/uqm/content/packages/uqm-${pkgver}-3domusic.uqm
}
