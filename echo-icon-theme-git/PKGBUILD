# Current Maintainer: Charles Bos <charlesbos1 AT gmail>
# Previous Maintainer: Michael Wiencek <mwtuea at gmail dot com>

pkgname=echo-icon-theme-git
_gitroot="git://git.fedorahosted.org"
_gitname="echo-icon-theme"
pkgver=r389.4007669
pkgrel=1
pkgdesc="A new generation of icon set to replace the legacy Bluecurve icon set."
url="https://fedorahosted.org/echo-icon-theme/"
arch=("any")
license=("CCPL")
depends=("icon-naming-utils")
optdepends=("mist-icon-theme")
source=("git://git.fedorahosted.org/echo-icon-theme")
md5sums=("SKIP")

pkgver() {
  cd $srcdir/echo-icon-theme
  # Use number of revisions as the version itself is too long.
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd $srcdir/echo-icon-theme/base
  aclocal && automake --add-missing && autoconf || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd $srcdir/echo-icon-theme/base
  make prefix=$pkgdir/usr install
}
