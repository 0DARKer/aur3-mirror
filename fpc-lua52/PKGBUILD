pkgname=fpc-lua52
pkgver=20130501
pkgrel=2
pkgdesc="Lua 5.2 unit for Free Pascal"
url="http://lua-users.org/wiki/LuaInFreePascal"
license=("custom:LGPL")
arch=(i686 x86_64)
makedepends=(fpc)
depends=("lua>=5.2")
source=("http://lua-users.org/files/wiki_insecure/lua52.pas")
md5sums=('a2c001ed3725e461dbab84be1ed77f56')
_unittgt=`fpc -iSP`-`fpc -iSO`
_fpcver=`fpc -iV`

build() {
  cd ${srcdir}
  fpc lua52.pas
}

package() {
  cd ${srcdir}
  find . -name '*.o' -o -name '*.ppu' -o -name '*.rst' -o -name '*.a'|
    xargs -rtl1 -I {} install -Dm644 {} "$pkgdir/usr/lib/fpc/$_fpcver/units/$_unittgt/lua/"{}
  ln -s "/usr/lib/liblua.so.5.2" "$pkgdir/usr/lib/liblua5.2.so"
}
