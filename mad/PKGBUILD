# Maintainer: Vladimir Chizhov <jagoterr@gmail.com>
pkgname=mad
pkgver=0.4.0
pkgrel=1
pkgdesc="markdown manual page viewer"
url="https://github.com/visionmedia/mad"
arch=('any')
license=('custom')
depends=('bash')
noextract=("${pkgver}")
source=("https://github.com/visionmedia/mad/tarball/${pkgver}")
md5sums=('112cbed44d06e05001eb99d36f123056')

build() {
    cd $srcdir
    tar -x --strip-components 1 -zf "$pkgver"
}

package() {
  make PREFIX="${pkgdir}/usr" install
}

