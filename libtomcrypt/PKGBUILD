# $Id$
# Maintainer: Michael Fellinger <m.fellinger@gmail.com>
pkgname=libtomcrypt
_pkgname=crypt
pkgver=1.17
pkgrel=1
pkgdesc="LibTomMath is a free open source portable number theoretic multiple-precision integer library written entirely in C."
url="http://libtom.org/?page=features&newsitems=5&whatfile=crypt"
license="public domain"
arch=('i686' 'x86_64')
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://libtom.org/files/${_pkgname}-${pkgver}.tar.bz2")
md5sums=(cea7e5347979909f458fe7ebb5a44f85)

build() {
  cd $startdir/src/$pkgname-$pkgver
  CFLAGS="-DTFM_DESC" make NODOCS=1 DESTDIR=$startdir/pkg install
  rm -rf $startdir/pkg/usr/share # remove empty doc dir
}
