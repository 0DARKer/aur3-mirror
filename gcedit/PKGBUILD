# Maintainer: Joseph Lansdowne <J49137@gmail.com>
pkgname=gcedit
pkgver=0.1.0
pkgrel=1
pkgdesc="GameCube disk image editor"
arch=(any)
url=http://i-know-nothing.co.cc/GCEdit
license=(GPL3)
depends=("python>=3.2" python-gobject)
source=(http://i-know-nothing.co.cc/files/desktop/gcedit/gcedit-0.1.0.tar.gz)
md5sums=(49e0d181fa762591bc9be99257a07129)

build () {
    cd "$srcdir/${pkgname}-$pkgver"
    ./configure
    make
}

package () {
    cd "$srcdir/${pkgname}-$pkgver"
    make DESTDIR="$pkgdir" install
}
