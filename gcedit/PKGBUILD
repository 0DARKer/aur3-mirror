# Maintainer: Joseph Lansdowne <J49137@gmail.com>
pkgname=gcedit
pkgver=0.1.1
pkgrel=1
pkgdesc="GameCube disk image editor"
arch=(any)
url=http://i-know-nothing.co.cc/GCEdit
license=(GPL3)
depends=("python>=3.2" python-gobject)
source=(http://i-know-nothing.co.cc/files/desktop/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=(d3c39f1191d2ce4fa886b3604fa036f8)

build () {
    cd "$srcdir/${pkgname}-$pkgver"
    ./configure
    make
}

package () {
    cd "$srcdir/${pkgname}-$pkgver"
    make DESTDIR="$pkgdir" install
}
