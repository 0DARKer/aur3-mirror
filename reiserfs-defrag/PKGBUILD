# $Id: $
# Maintainer:
# Contributor: 

pkgname=reiserfs-defrag
pkgver=0.1
pkgrel=1
pkgdesc="Offline defragmenter for reiserfs. Experimental. Do not use it on sensitive data."
arch=('i686' 'x86_64')
url="https://github.com/i-rinat/reiserfs-defrag"
license=('GPL')
depends=('gcc-libs')
source=(https://github.com/downloads/i-rinat/reiserfs-defrag/reiserfs-defrag-v0.1.tar.xz)
sha256sums=('6db2fb75406a903effb7495078960fe7e26da65b9efb025af346e45b93741936')

build() {
  cd ${srcdir}/${pkgname}-v${pkgver}

  mkdir build; cd build
  CXXFLAGS="-Wall -O2" cmake .. -DCMAKE_INSTALL_PREFIX=/usr

  make
}

package() {
  cd ${srcdir}/${pkgname}-v${pkgver}
  install -D -m 755 build/rfsd $pkgdir/usr/bin/rfsd
}
