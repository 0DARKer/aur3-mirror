pkgname=pypoker-eval
pkgver=138.0
pkgrel=0
pkgdesc="python adaptor for the poker-eval toolkit"
arch=('i686' 'x86_64')
url="http://pokersource.sourceforge.net/"
license=(GPL)
depends=(poker-eval python2)
source=("http://download.gna.org/pokersource/sources/${pkgname}-${pkgver}.tar.gz" "configure.patch")
md5sums=('751cad1e5c18c7c2f36a086a937193aa' '402c6d45ae56f488988780642ade1a30')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 < ../configure.patch || return 1

  ./configure --prefix=/usr
  make || return 1
  make install DESTDIR="$startdir/pkg" || return 1
}
