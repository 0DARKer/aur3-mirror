pkgname=python-vitalus
pkgver=0.1
pkgrel=1
pkgdesc="Python rsync wrapper fir backup"
arch=('any')
url="https://github.com/sciunto/Vitalus"
license=('GPL3')
depends=('python')
source=(https://github.com/downloads/sciunto/Vitalus/vitalus-${pkgver}.tar.gz)
md5sums=("7a4a0f4b4de39861a500c31a38153ac7")

build() {
  cd "$srcdir/vitalus-$pkgver"

  python3 setup.py install --root="${pkgdir}"

}

