pkgname=virtualbox_bin_extpack
pkgver=4.0.6
pkgrel=1
_realname=Oracle_VM_VirtualBox_Extension_Pack
_build=71344
pkgdesc="Oracle VM VirtualBox Extension Pack"
license=('PUEL')
arch=('i686' 'x86_64')
url=http://sourceforge.net/projects/gmontray/files/
#install=($pkgname.install)
depends=(virtualbox_bin)
source=(http://download.virtualbox.org/virtualbox/$pkgver/$_realname-$pkgver-$_build.vbox-extpack)
md5sums=('88bb256415ef560c32f35ec392c0b9d8')

[ "$CARCH" = "i686" ] && linuxdir=linux.x86
[ "$CARCH" = "x86_64" ] && linuxdir=linux.amd64
build(){
	install -D -m644 ${srcdir}/ExtPack-license.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
	install -d ${pkgdir}/opt/VirtualBox/ExtensionPacks/${_realname}/${linuxdir}
	install -m644 ${srcdir}/{ExtPack.xml,PXE-Intel.rom} ${pkgdir}/opt/VirtualBox/ExtensionPacks/${_realname}
	install -m644 ${srcdir}/${linuxdir}/* ${pkgdir}/opt/VirtualBox/ExtensionPacks/${_realname}/${linuxdir}
}
