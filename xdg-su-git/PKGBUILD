# Maintainer: Atilla ÖNTAŞ <tarakbumba@gmail.com>
#Contributor: Mitchell Nemitz <mitchell.nemitz@gmail.com>
pkgname=xdg-su-git
pkgver=20111210
pkgrel=1
pkgdesc="Run a program as root with a graphical interface"
arch=('any')
url="https://github.com/tarakbumba/xdg-su"
license=('mit')
makedepends=('links' 'xmlto' 'git')
provides=('xdg-su')
conflicts=('xdg-su')
options=()
install=
source=()

_gitroot="https://github.com/tarakbumba/xdg-su/"
_gitname="xdg-su"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

cd "$srcdir/$_gitname"
./configure --prefix=/usr
make
}

package() {
    cd "$srcdir/$_gitname"
    make DESTDIR="${pkgdir}" install
}