# Maintainer: dryes <joswiseman@gmail>
pkgname='clnns-git'
pkgver=d82bc58
pkgrel=1
pkgdesc='searches and downloads from newznab providers on the command line.'
url='https://github.com/dryes/clnns'
arch=('any')
license=('MIT')
depends=('python' 'python-feedparser')
makedepends=('git')

_gitroot='git://github.com/dryes/clnns.git'
_gitname='clnns'

pkgver() {
  cd "${srcdir}/${_gitname}"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "${srcdir}"
  msg 'Connecting to GIT server....'

  if [ -d "${_gitname}" ] ; then
    cd "${_gitname}" && git pull origin
    msg 'The local files are updated.'
  else
    git clone "${_gitroot}" "${_gitname}"
  fi

  msg 'GIT checkout done or server timeout'
}

package() {
  mkdir -p "${pkgdir}/usr/bin"
  install -D -m755 "${srcdir}/clnns/clnns.py" "${pkgdir}/usr/bin/clnns"
}
