# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Contributor: Sergey Mastykov <smastykov[at]gmail[dot]com>

pkgname=python-translationstring
_pkgname=translationstring
pkgver=1.1
pkgrel=3
pkgdesc="Utility library for i18n relied on by various Repoze and Pyramid packages"
arch=('any')
license=('custom:BSD')
url="https://github.com/Pylons/translationstring"
depends=('python')
makedepends=('python-distribute')
source=(http://pypi.python.org/packages/source/t/translationstring/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('8147c47e8091bc7b8168758a01c049581959faba9d56cafde8734de44e98711c')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  python setup.py install --prefix=/usr --root=${pkgdir} --optimize=1
}
