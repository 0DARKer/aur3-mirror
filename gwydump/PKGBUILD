# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
pkgname=gwydump
pkgver=2.0
pkgrel=1
pkgdesc="A small program to dump Gwyddion .gwy file structure in a human-readable text format"
url="http://gwyddion.net/gwydump.php"
license=('GPL')
arch=('i686' 'x86_64')
depends=('glib2')
makedepends=('pkgconfig')
source=(http://downloads.sourceforge.net/project/gwyddion/gwydump/2.0/$pkgname-$pkgver.tar.gz)
md5sums=('d272f30f973a09a520c250100bf2f558')

build() {
  cd $srcdir/$pkgname-$pkgver
  make

  # Syntax of pkg-config has changed
  sed -i -e "s/--prefix/--variable=prefix/" Makefile
  make DESTDIR=$pkgdir install
}
