pkgname=eve-wallpaper
pkgver=1.0
pkgrel=4
pkgdesc="Various wallpapers from the sandbox MMO EVE-Online."
arch=(i686 x86_64)
url="http://www.eveonline.com/wallpapers/"
license=('custom')
source=(http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP26_1024.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP26_1280.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP26_1600.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP27_1024.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP27_1280.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP27_1600.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP28_1024.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP28_1280.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP28_1600.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP29_1024.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP29_1280.jpg http://ccp.vo.llnwd.net/o2/wallpapers/Eve_WP29_1600.jpg CCP-license.txt)
md5sums=('e4e89286dd6c3fa868041e6015fa8d50'
         'c16e9951f14baf076ea6c3d938500733'
         '5498b4f0af49ce866cc8b785853239fa'
         '947d4f67343bc6072d8fad9ca124e381'
         '46f0bad5de6e3b515ad3bf22db8cf424'
         'ea55947a0e294510e23329770b449c47'
         '7e6e7d0e704ae8d9aee821566eda3d46'
         '68d1357516f5c5fdeb8dacd15b3c18a9'
         '2ee1a954ab12be22bed8b2e3e48b4535'
         '3ae9738255fcbea5e206279113ba8a49'
         '1b1572b02d1f0db42751ddd145aa160c'
         '26f0107a373d558a51775255f39a86eb'
         '52cb3871b07c18304ada8d9ee26f92fc')

build() {
  cd "$startdir/src/"
  mkdir -p "$startdir/pkg/usr/share/wallpapers/eve-online/"
  # Installing wallpapers
  cp $startdir/src/*jpg $startdir/pkg/usr/share/wallpapers/eve-online/
  # Installing license
  install -D -m644 $startdir/src/CCP-license.txt $startdir/pkg/usr/share/licenses/$pkgname/license.txt
}

