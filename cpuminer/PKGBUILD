## Maintainer : gee

name=cpuminer
pkgname=$name
pkgver=2.1.4
pkgrel=1
pkgdesc="pooler's Litecoin cpuminer."
arch=('i686' 'x86_64')
url="https://github.com/pooler/cpuminer"
depends=('gcc-libs' 'curl')
makedepends=('boost' 'gcc' 'make' 'automoc4' 'gawk')
license=('GPLv2')
source=("${pkgname}-${pkgver}.zip::https://github.com/pooler/cpuminer/tarball/cpumine")

md5sums=('a3fad16d57d173cbf67cf6b7140b0690')

cpuminer_srcdir=${srcdir}/pooler-cpuminer-6fc8833


build() {
	cd ${cpuminer_srcdir}

	./autogen.sh

	./configure
	
	make $MAKEFLAGS
}


package() {
	mkdir -p $pkgdir/usr/bin

	# get compiled binaries
	install -D -m755 ${cpuminer_srcdir}/minerd $pkgdir/usr/bin/
}
