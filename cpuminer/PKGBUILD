## Maintainer : gee

name=cpuminer
pkgname=$name
pkgver=2.1.5
pkgrel=1
pkgdesc="pooler's Litecoin cpuminer."
arch=('i686' 'x86_64')
url="https://github.com/pooler/cpuminer"
depends=('gcc-libs' 'curl')
makedepends=('boost' 'gcc' 'make' 'automoc4' 'gawk')
license=('GPLv2')
source=("${pkgname}-${pkgver}.zip::https://github.com/downloads/pooler/cpuminer/pooler-${pkgname}-${pkgver}.tar.gz")

cpuminer_srcdir=${srcdir}/cpuminer-${pkgver}


build() {
	cd ${cpuminer_srcdir}


	./configure
	
	make $MAKEFLAGS
}


package() {
	mkdir -p $pkgdir/usr/bin

	# get compiled binaries
	install -D -m755 ${cpuminer_srcdir}/minerd $pkgdir/usr/bin/
}
md5sums=('b56720afd5a74826a3dba85b93ce7e5f')
