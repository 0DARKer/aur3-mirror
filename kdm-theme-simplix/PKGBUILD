# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

pkgname=kdm-theme-simplix
pkgver=r33.f4849dc
pkgrel=1
pkgdesc="simpliX theme for KDM."
arch=(
	"$CARCH"
)
url="http://sixsixfive.deviantart.com/art/simpliX-346404452"
license=(
	"CCPL:cc-by-4.0"
)

depends=(
	"kdebase-workspace>=4.3"
	"ttf-dejavu"
)
optdepends=()
makedepends=(
	"git"
)
provides=(
	"${pkgname}=${pkgver}"
)
conflicts=(
	"${pkgname}"
)
replaces=(
	"${pkgname}"
)

source=(
	"${pkgname}::git+https://github.com/sixsixfive/themes.git"
)
md5sums=(
	"SKIP"
)
sha512sums=(
	"SKIP"
)

_themename=simpliX

pkgver() {
	cd ${srcdir}/${pkgname}
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	# Create base directory
	install -dm755 ${pkgdir}/usr/share/apps/kdm/themes
	
	# Change the current working directory
	cd ${srcdir}/${pkgname}/${_themename}
	
	# KDM theme
	cp -R ./Extras/KDM-4.3/${_themename} ${pkgdir}/usr/share/apps/kdm/themes
}