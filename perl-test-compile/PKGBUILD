# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=perl-test-compile
_pkgname=Test-Compile
pkgver=0.13
pkgrel=1
pkgdesc="Test::Compile - Check whether Perl module files compile correctly"
arch=('any')
url="http://search.cpan.org/dist/${_pkgname}"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-universal-require')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/M/MA/MARCEL/${_pkgname}-$pkgver.tar.gz)
md5sums=('ed5933cda1f58fd949e77e6896bd9c03')

build() {
  cd $srcdir/${_pkgname}-$pkgver

  perl Makefile.PL INSTALLDIRS=vendor

  make
}

package () {
  cd $srcdir/${_pkgname}-$pkgver

  make DESTDIR=$pkgdir install

  find $pkgdir -name perllocal.pod -delete
  find $pkgdir -name .packlist -delete
}
