#Maintaining by me

pkgname=pdfchain
pkgver=0.3.2
pkgrel=1
pkgdesc="PDF Chain is a Graphical User Interface for the PDF Tool Kit"
url="http://pdfchain.sourceforge.net/"
license="GPL"
arch=('i686' 'x86_64')
depends=('pdftk' 'gtkmm3')
makedepends=(intltool)
install=('pdfchain.install')
source=("http://sourceforge.net/projects/pdfchain/files/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz" "POTFILES.skip")
md5sums=('0c1687ae36305ee2b509bf97ea89173d' 'b16ca527af3a13ec163c86927555f125')

build() {
	  cd $startdir/src/$pkgname-$pkgver
	  cp $startdir/POTFILES.skip po/
	  ./configure
	  make || return 1
	  make prefix=$startdir/pkg/usr install
	}
