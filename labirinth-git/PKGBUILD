# Maintainer: Sam Stuewe <halosghost at archlinux dot info>
# Contributor: EvilTosha

pkgname=labirinth-git
pkgver=20130219
pkgrel=1
pkgdesc="A first-person shooter written in Bash"
arch=('any')
url="https://github.com/EvilTosha/labirinth.git"
license=('custom:none')    # none listed. Efforts are being made to contact upstream
depends=('bash')
makedepends=('git')

_gitroot=git://github.com/EvilTosha/labirinth.git
_gitname=labirinth

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {

  install -Dm755 "$srcdir/$_gitname-build/lab2.sh" "${pkgdir}/usr/bin/$_gitname"

}

# vim:set ts=2 sw=2 et:
