# Maintainer: Sam Stuewe <halosghost at archlinux dot info>
pkgname=labirinth-git
_gitname="labirinth"
pkgver=26
pkgrel=1
pkgdesc="A Three-Dimensional first-person shooter written in Bash"
arch=('any')
url="https://github.com/EvilTosha/labirinth.git"
license=('GPLv3')
depends=('bash')
makedepends=('git')
source=("$_gitname::git+git://github.com/EvilTosha/labirinth.git")
sha256sums=('SKIP')

pkgver() {
  cd "$_gitname"
  git rev-list HEAD --count
}

package() {
  install -Dm755 "$srcdir/$_gitname/lab2.sh" "${pkgdir}/usr/bin/$_gitname"
}

# vim:set ts=2 sw=2 et:
