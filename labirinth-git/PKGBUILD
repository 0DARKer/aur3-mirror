# Maintainer: Sam Stuewe <halosghost at archlinux dot info>
pkgname=labirinth-git
_gitname="labirinth"
pkgver=0.26.79812ad
pkgrel=1
pkgdesc="A Three-Dimensional first-person shooter written in Bash"
arch=('any')
url="https://github.com/EvilTosha/labirinth.git"
license=('GPLv3')
depends=('bash')
makedepends=('git')
source=("$_gitname::git://github.com/EvilTosha/labirinth.git")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/$_gitname"
  echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

package() {
  install -Dm755 "$srcdir/$_gitname/lab2.sh" "${pkgdir}/usr/bin/$_gitname"
}

# vim:set ts=2 sw=2 et:
