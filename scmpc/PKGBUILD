# Contributor: Mark Taylor <skymt0@gmail.com>
pkgname=scmpc
pkgver=0.2.2
pkgrel=4
pkgdesc="Audioscrobbler client daemon for mpd"
arch=('i686' 'x86_64')
url="http://scmpc.berlios.de/"
license=('GPL')
backup=(etc/scmpc.conf)
depends=('confuse' 'argtable' 'libdaemon' 'curl')
options=(emptydirs)
source=($pkgname-$pkgver.tar.bz2::http://download.berlios.de/scmpc/$pkgname-$pkgver.tar.bz2
	scmpcd)
changelog=scmpc.changelog

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure \
  	--prefix=/usr \
  	--sysconfdir=/etc \
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  install -Dv -m 755 ${srcdir}/${source[1]} ${pkgdir}/etc/rc.d/scmpcd
  install -v -m 644 ${pkgdir}/{usr/share/scmpc,etc}/scmpc.conf
  install -d -m 755 ${pkgdir}/var/lib/scmpc/
}
sha1sums=('4105ef32f543c4babc20bf1569ca00426c7128fe'
          '38a0511475699f6e4f0b61e04a4be7ae64c7c6b1')
