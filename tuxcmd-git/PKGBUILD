# Maintainer: Christian Hesse <mail@eworm.de>
# Contributor: xduugu

pkgname=tuxcmd-git
pkgver=20121107
pkgrel=1
pkgdesc="A GTK2 file manager with two panels - git checkout"
arch=('i686' 'x86_64')
url="http://tuxcmd.sourceforge.net/"
license=('GPL')
depends=('gtk2')
makedepends=('fpc' 'git')
optdepends=('gnome-vfs')
provides=('tuxcmd')
conflicts=('tuxcmd')
options=('!docs' '!emptydirs')
source=('tuxcmd.desktop')

_gitroot="git://git.bzatek.net/tuxcmd/"
_gitname="tuxcmd"

build() {
	cd "${srcdir}"
	msg "Connecting to GIT server...."

	if [ -d ${_gitname} ] ; then
		cd ${_gitname} && git pull origin
		msg "The local files are updated."
	else
		git clone ${_gitroot}
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	rm -rf "${srcdir}/${_gitname}-build"
	cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
	cd "${srcdir}/${_gitname}-build"

	make
}

package() {
	cd "${srcdir}/${_gitname}-build"

	# Note we need usr/ in DESTDIR, the package does not deal with a prefix.
	make DESTDIR="${pkgdir}/usr/" install

	install -m644 -D "${srcdir}/tuxcmd.desktop" "${pkgdir}/usr/share/applications/tuxcmd.desktop"
}

sha256sums=('729d0ed4de75213f356fa56ef081b03b1c27c1f5cc697eb92d2de43c1e3ba73c')
