# Maintainer: Gavin Costello <gavcos at gmail dot com>
# Contributor:
pkgname=backbonejs
_script=backbone
pkgver=1.0.0
pkgrel=6
pkgdesc="Backbone is a JavaScript library with a RESTful JSON interface, and is based on the model-view-presenter (MVP) application design paradigm."
arch=(any)
url=http://backbonejs.org
license=('MIT')
depends=(underscorejs)
source=($url/$_script.js $url/$_script-min.js)
md5sums=('1adb34b904b20cb1823f4174e5b69d40'
         '9cfbc78dc7eb8ac72cc3af1bec8ce7ee')

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/share/${pkgname}"
  install -m644 "${_script}-min.js" "${pkgdir}/usr/share/${_script}-min.js"
  install -m644 "${_script}.js" "${pkgdir}/usr/share/${_script}.js"
}

# vim:set ts=2 sw=2 et:
