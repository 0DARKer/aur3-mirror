# Contributor: Garrett <http://floft.net/contact>
pkgname=spinach
pkgver=0.3.96
pkgrel=1
pkgdesc="A small AUR helper written in Bash."
arch=('any')
url="http://floft.net/wiki/Scripts/Spinach"
license=('GPL')
depends=('curl')
source=(http://www.floft.net/uploads/spinach.tar.gz)
md5sums=('2d47d541fb58773e6c2e9e3f0c20bb8c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.1 $pkgdir/usr/share/man/man1/$pkgname.1
}
