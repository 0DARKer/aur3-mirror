# Contributor: Garrett <http://floft.net/contact>
pkgname=spinach
pkgver=0.3.98
pkgrel=1
pkgdesc="A small AUR helper written in Bash."
arch=('any')
url="http://floft.net/wiki/Scripts/Spinach"
license=('GPL')
depends=('curl')
source=(http://www.floft.net/uploads/spinach/spinach.tar.gz)
md5sums=('415f5aa640a3ade36fe4c0ad6853db67')
sha256sums=('02c1be548ac210aa8892014158f5d9e439baa19295e96175419f4e76c42a5044')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.1 $pkgdir/usr/share/man/man1/$pkgname.1
}
