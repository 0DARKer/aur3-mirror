pkgname=spinach
pkgver=0.2.0
pkgrel=3
pkgdesc="A small AUR helper written in Bash."
arch=('any')
url="http://floft.net/wiki/Scripts/Spinach"
license=('GPL')
depends=('bash' 'coreutils' 'curl' 'grep' 'sed' 'tar' 'which')
optdepends=('findutils: color support')
source=(spinach)
md5sums=('e273d3d297994108bd50b02aec617cef')

build() {
  install -Dm755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}
