# Maintainer: Garrett <http://floft.net/contact>
pkgname=spinach
pkgver=0.4.22
pkgrel=1
pkgdesc="A small AUR helper written in Bash."
arch=('any')
url="http://floft.net/wiki/Scripts/Spinach"
license=('GPL')
depends=('curl')
source=(http://www.floft.net/uploads/spinach/spinach.tar.gz)
md5sums=('9009cb7d35ddbb9c134623588d9a569d')
sha256sums=('136733c809f72704f0296e01855254c356b2e3fbf18154d1ed00c0e53f9a4bb1')
install=spinach.install

build() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.1 $pkgdir/usr/share/man/man1/$pkgname.1
  install -Dm755 config $pkgdir/usr/share/$pkgname/config
}
