# Contributor: Leif Warner <abimelech@gmail.com>
pkgname=mysql-odbc
pkgver=5.1.5
pkgrel=1
pkgdesc="The official ODBC driver for MySQL"
arch=('i686')
url="http://www.mysql.com/products/connector/odbc"
license=('GPL')
depends=('unixodbc' 'mysql')
source=(http://mysql.west.mirrors.airband.net/Downloads/Connector-ODBC/5.1/mysql-connector-odbc-5.1.5-linux-x86-32bit.tar.gz)
md5sums=('2e8a988ad81860a6a04771c31655510a')
build() {
  cd $srcdir/mysql-connector-odbc-$pkgver-linux-x86-32bit || return 1
  install -D bin/myodbc-installer $pkgdir/usr/bin/myodbc-installer || return 1
  cp -R lib $pkgdir/usr || return 1
}

