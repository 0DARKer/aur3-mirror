pkgname=wxosmose
pkgver=0.0.6
pkgrel=1
pkgdesc="A front-end for Osmose, which is a command-line Sega Master System Emulator"
url="http://bcz.emu-france.com/"
license="GPL"
arch=("i686" "x86_64")
depends=("wxgtk" "osmose")
makedepends=("rpmextract")
source=("http://distrib-coffee.ipsl.jussieu.fr/pub/linux/plf/mandriva/2009.0/free/release/source/$pkgname-$pkgver-1plf2008.0.src.rpm")
md5sums=("8f5071a155932fefa837d38667e7fb9e")

build() {
	rpmextract.sh $pkgname-$pkgver-1plf2008.0.src.rpm
	tar xvjf $pkgname-$pkgver.tar.bz2
	cd $pkgname-$pkgver
	patch -p1 < ../wxosmose-0.0.6-config-data-and-wx2.8.patch
	rm md5/unzip/*.o
	rm md5/zlib/*.o
	make

	install -v -D -m755 $pkgname $pkgdir/usr/bin/$pkgname

	install -v -D -m644 datas/MasterSystem/roms.list $pkgdir/usr/share/games/$pkgname/datas/MasterSystem/roms.list
	install -v -D -m644 debian/wxosmose.desktop  $pkgdir/usr/share/applications/wxosmose.desktop
	install -v -D -m644 ressources/wxosmose.png  $pkgdir/usr/share/pixmaps/wxosmose.png
}