pkgname='perl-test-longstring'
pkgver='0.13'
pkgrel='1'
pkgdesc="tests strings for equality, with more helpful failures"
arch=('any')
url='http://search.cpan.org/dist/Test-LongString'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/R/RG/RGARCIA/Test-LongString-0.13.tar.gz')
md5sums=('578cb904041a121298ed3aebaf503108')

build() {
  DIST_DIR="${srcdir}/Test-LongString-0.13"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

