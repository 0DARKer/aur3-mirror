# PKGBUILD generated by pacpan
pkgname=perl-lingua-en-inflect-number
_realname=Lingua-EN-Inflect-Number
pkgver=1.1
pkgrel=1
pkgdesc="no description available"
arch=(i686 x86_64)
license=('unknown: check http://search.cpan.org/src/SIMON/Lingua-EN-Inflect-Number-1.1/README.txt')
url="http://search.cpan.org/~simon/Lingua-EN-Inflect-Number"
options=(!emptydirs)

depends=('perl' 'perl-lingua-en-inflect')

#provides=('Lingua-EN-Inflect-Number')
provides=("lingua-en-inflect-number=$pkgver" 
"Lingua::EN::Inflect::Number=$pkgver" "perl-lingua-en-inflect-number=$pkgver")

source=("http://search.cpan.org/CPAN/authors/id/S/SI/SIMON/$_realname-$pkgver.tar.gz")
md5sums=('bcee940ef603da93e7da11d8eecad409')

build() {
  _expected_dir="${srcdir}/${_realname}-${pkgver}"
  if [ -d "$_expected_dir" ]; then
    cd "$_expected_dir"
  else
    _expected_dir="${srcdir}/$(bsdtar -t -f $(basename $source) | head -n1)"
    if [ -d "$_expected_dir" ]; then
      cd "$_expected_dir"
    else
      _makefile=$(find $srcdir -iname Makefile.PL)
      if [ ! -z "$_makefile" ]; then
        _expected_dir=$(dirname $_makefile)
        if [ -d "$_expected_dir" ]; then
          cd "$_expected_dir"
        else
          echo "[1;31mERROR[0m unable to detect source directory"
          echo "[1;34m-->[0m this is often due to CPAN's lack of standard naming conventions"
          echo "[1;34m-->[0m it may be possible to fix this by adjusting the build function in the PKGBUILD"
        fi
      fi
    fi
  fi
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

