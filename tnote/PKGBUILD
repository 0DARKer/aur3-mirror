pkgname=tnote
pkgver=0.2.1
pkgrel=1
pkgdesc="a small note taking program for the terminal"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/tnote/"
license=('GPLv3+')
depends=('python')
source=('http://downloads.sourceforge.net/sourceforge/tnote/tnote-0.2.1.tar.gz')
md5sums=('17b43996a7889c6f84cd2072c485c1a4')

build() {
  tar -xzf tnote-0.2.1.tar.gz
  cd ${srcdir}/tnote-0.2.1

  sudo python setup.py install || return 1

}
