# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=sipvicious
pkgver=0.2.6
pkgrel=1
pkgdesc="Tools for auditing SIP based VoIP systems"
arch=('i686' 'x86_64')
url="http://blog.sipvicious.org"
license=('GPLv2')
depends=('python2')
install="post.install"
source=("http://sipvicious.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
conflicts=('sipvicious-svn')
md5sums=('a4fbdd9b5fe8df5946a8b0180bc3eb6b')

build() {
	msg "No build..."
}

package() {
	install -d -m 755 "${pkgdir}/usr/bin"
	install -d -m 755 "${pkgdir}/usr/share"

	cd "${srcdir}/${pkgname}"
	chmod 755 *.py
	sed -i "s:/usr/bin/env python:/usr/bin/env python2:" *.py
	mv "${srcdir}/${pkgname}" "${pkgdir}/usr/share"
}
