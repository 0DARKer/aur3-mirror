# Contributor: Chase Geigle <sky at skystrife dot com>
pkgname=sdl2-hg
pkgver=7506
pkgrel=5
pkgdesc="A library for portable low-level access to a video framebuffer, audio output, mouse, and keyboard (Version 2.0). (Mercurial Version)"
arch=('i686' 'x86_64')
url="http://www.libsdl.org"
license=('MIT')
groups=('lib')
depends=('sh')
makedepends=('mercurial' 'cmake')
provides=('sdl2')
conflicts=('sdl2')

_hgroot='http://hg.libsdl.org/SDL'
_hgrepo='sdl2'

#pkgver() {
#  cd "$srcdir/$_hgrepo"
#  echo $(hg identify -n).$(hg identify -i)
#}

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server..."

  if [[ -d "$_hgrepo" ]]; then
    cd "$_hgrepo"
    # Force version 7506 for the time being, 7507 doesnt compile
    hg update $pkgver
#    hg pull -u
#    msg "The local files are updated."
  else
#    hg clone "$_hgroot" "$_hgrepo"
    hg clone -r $pkgver "$_hgroot" "$_hgrepo"
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_hgrepo-build"
  mkdir "$srcdir/$_hgrepo-build"

  # configure
  cd "$srcdir/$_hgrepo"
  ./configure --prefix=/usr
  # cmake
  cd "$srcdir/$_hgrepo-build"
  cmake "../$_hgrepo" -DCMAKE_INSTALL_PREFIX=/usr -DSDL_STATIC=OFF
  make
}

package() {
  cd "$srcdir/$_hgrepo-build"
  make DESTDIR="$pkgdir" install
  install -Dm644 "$srcdir/$_hgrepo/COPYING.txt" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm644 "$srcdir/$_hgrepo/sdl2.m4" "${pkgdir}/usr/share/aclocal/sdl2.m4"
}

