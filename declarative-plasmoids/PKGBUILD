# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=declarative-plasmoids
pkgver=4.10
pkgrel=1
pkgdesc="A set of plasmoids (QML) for Plasma Active"
arch=('any')
url='http://plasma-active.org/'
license=('LGPL')
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
groups=('plasma-active')
install=${pkgname}.install
source=("http://download.kde.org/stable/active/3.0/src/${pkgname}-${pkgver}.tar.xz")
md5sums=('e8c61ae6a67ec1241fba312c8b2cc154')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/build"
  make DESTDIR="${pkgdir}" install
}
