pkgname=pkgbuild-mode
pkgver=0.10
pkgrel=1
pkgdesc="A major mode for creating packages with emacs"
arch=('any')
url="http://github.com/juergenhoetzel/pkgbuild-mode"
license=('GPL')
depends=('emacs')
install=pkgbuild-mode.install
source=(http://github.com/juergenhoetzel/pkgbuild-mode/tarball/${pkgver})
md5sums=('a9be213f1934217618140e8c6ffd43cf')
sha1sums=('f85de4b1e212b6bd09c345ad9b53a5af10172538')

build() {
 true
}

package() {
  install -D -m644 "${srcdir}"/juergenhoetzel-pkgbuild-mode-*/pkgbuild-mode.el "${pkgdir}/usr/share/emacs/site-lisp/pkgbuild-mode.el" || return 1
}
