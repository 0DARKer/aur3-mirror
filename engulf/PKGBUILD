# Maintainer: Greg Fitzgerald <greg@gregf.org>
pkgname=engulf
pkgver=2.0.0BETA5
_pkgver=2.0.0-BETA5
pkgrel=1
pkgdesc="Visual HTTP Concurrency / Load Tool"
arch=('i686' 'x86_64')
url="https://github.com/andrewvc/engulf"
license=('MIT')
depends=(java-runtime)
source=("https://github.com/downloads/andrewvc/${pkgname}/${pkgname}-${_pkgver}-standalone.jar"
        ${pkgname}.sh)
md5sums=('39433af03f6940b8ac5ebddf22458317'
         '90df7da61bcd9b3a77b25575ea9ff17a')
noextract=(${source[@]##*/})

package() {
  cd "${srcdir}"
  install -Dm755 ${pkgname}.sh "${pkgdir}"/usr/bin/${pkgname}
  install -Dm644 ${pkgname}-${_pkgver}-standalone.jar "${pkgdir}"/usr/share/java/${pkgname}/${pkgname}.jar
}

