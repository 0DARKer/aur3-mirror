# Maintainer: OmeGa <omega at mailoo dot org>
# Contributor: Daniel Leining <daniel@the-beach.co>

pkgname=cinnamon-theme-odin
pkgver=2.0
pkgrel=2
pkgdesc="A dark Cinnamon theme with an airy panel and metallic buttons and switches."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/86"
license=('unknown')
depends=('cinnamon' 'ttf-droid-sans')
source=(http://cinnamon-spices.linuxmint.com/uploads/themes/RM1C-KITZ-QATC.zip)
sha1sums=('78a135e4a6e507c482335c22c5668c0e835795cb')

package() {
  mkdir -p ${pkgdir}/usr/share/themes/
  cp -r ${srcdir}/odinthemes/* ${pkgdir}/usr/share/themes/
}

