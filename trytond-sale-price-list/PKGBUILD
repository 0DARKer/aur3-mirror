pkgname=trytond-sale-price-list
_pkgname=trytond_sale_price_list
pkgver=2.8.0
_pkgdir=2.8
pkgrel=1
pkgdesc="The sale_price_list module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.8' 'trytond-party>=2.8' 'trytond-product-price-list>=2.8' 'trytond-sale>=2.8')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("31d134a40dc196227d3bed0144eb81f9")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}