# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=plastex  
pkgver=1.0.0.0
pkgrel=1
pkgdesc="Python-based LaTeX document processing framework."
url="http://tiarno.github.io/plastex/"
arch=('any')
license=('custom')
depends=('python2' 'texlive-core')
source=(https://github.com/tiarno/plastex/tarball/master/tiarno-plastex-1.0.0-0-gd296b2f.tar.gz)
md5sums=('37e3955aa56d76b6d52eca4d2d382ae0')

package() {
  cd $srcdir/$pkgname
  python2 setup.py install --root=$pkgdir/ 
  install -D -m644 $srcdir/$pkgname/LICENSE \
    $pkgdir/usr/share/licenses/$pkgname/LICENSE 
  for _i in  $srcdir/$pkgname/licenses/*
  do 
    install -D -m644 ${_i} $pkgdir/usr/share/licenses/$pkgname/${_i}
  done
}
