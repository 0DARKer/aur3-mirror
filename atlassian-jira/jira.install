post_install() {
	if [ $(id -u jira) > 0 ]; 
	then
		echo "User jira already exists, no need to create"
	else
		echo "Creating jira user"
		useradd -r jira
	fi

	echo "Changing file ownership to jira:jira"
	chown -R jira:jira /opt/atlassian-jira/
}

post_upgrade() {
 	echo "Changing file ownership to jira:jira"
	chown -R jira:jira /opt/atlassian-jira/
}
