# Contributor: Flamelab <panosfilip@gmail.com> 
# PKGBUILD based on libkmap-svn

pkgname=libkgeomap-git
_gitname=libkgeomap
pkgver=08d3e99
pkgrel=1
pkgdesc='Libkgeomap is a wrapper around different world-map components, to browse and arrange photos over a map.'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('kdelibs' 'kdeedu-marble')
makedepends=('git' 'cmake' 'automoc4')
conflicts=('libkgeomap')
provides=('libkgeomap')
groups=('kde-git' 'digikam-git')
source=('git://anongit.kde.org/libkgeomap')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $srcdir
  
  msg "GIT checkout done"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi
  mkdir $srcdir/build
  cd $srcdir/build
  cmake $srcdir/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}