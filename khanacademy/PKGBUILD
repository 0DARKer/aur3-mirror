pkgname=khanacademy
pkgver=0.1.1
pkgrel=1
pkgdesc="KhanAcademy is a PERL script to list and play with MPlayer videos from http://www.khanacademy.org/"
arch=('any')
url="http://trizen.go.ro/"
license=('GPL')
depends=('mplayer' 'perl-libwww')
source=(http://trizen.go.ro/files/$pkgname)
md5sums=('cb5a5016553c3b460dad836988702f54')

build() {
  install -Dm 755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}
