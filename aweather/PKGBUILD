# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=aweather
pkgver=0.6.1
pkgrel=1
pkgdesc="Advanced weather reporting program"
arch=('i686' 'x86_64')
url="http://lug.rose-hulman.edu/proj/aweather/"
license='GPL3'
depends=('grits=0.6.1' 'rsl')
makedepends=('hdf5')
options=(!libtool)
source=(http://lug.rose-hulman.edu/proj/aweather/$pkgname-$pkgver.tar.gz)
md5sums='bc5bd4a8946a0c8a32732c5945c33a66'

build() {
  cd $srcdir/$pkgname-$pkgver

   ./configure --prefix=/usr
   make
   make DESTDIR=$pkgdir install
}
