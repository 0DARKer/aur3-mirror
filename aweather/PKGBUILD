# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=aweather
pkgver=0.6
pkgrel=1
pkgdesc="Advanced weather reporting program"
arch=('i686' 'x86_64')
url="http://lug.rose-hulman.edu/proj/aweather/"
license=('GPL3')
depends=('grits=0.6' 'rsl')
makedepends=('hdf4')
source=(http://lug.rose-hulman.edu/proj/aweather/$pkgname-$pkgver.tar.gz)
md5sums=('d4733eb425322556a62a9eb5ff98c0bd')

build() {
  cd $srcdir/$pkgname-$pkgver

   ./configure --prefix=/usr
   make
   make DESTDIR=$pkgdir install
}
