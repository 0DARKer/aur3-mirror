# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=aweather
pkgver=0.5.2
pkgrel=1
pkgdesc="Advanced weather reporting program"
arch=('i686' 'x86_64')
url="http://lug.rose-hulman.edu/proj/aweather/"
license=('GPL3')
depends=('grits=0.5.2' 'rsl')
source=(http://lug.rose-hulman.edu/proj/aweather/$pkgname-$pkgver.tar.gz)
md5sums=('55b6df29ecee11254ceccd1bd29d96b2')

build() {
  cd $srcdir/$pkgname-$pkgver

   ./configure --prefix=/usr
   make
   make DESTDIR=$pkgdir install
}
