# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=aweather
pkgver=0.6.3
pkgrel=1
pkgdesc="Advanced weather reporting program"
arch=('i686' 'x86_64')
url="http://lug.rose-hulman.edu/proj/aweather/"
license='GPL3'
depends=('grits=0.6.3' 'rsl')
makedepends=('hdf5')
source=(http://lug.rose-hulman.edu/proj/aweather/$pkgname-$pkgver.tar.gz)
md5sums='e58ab0c0843e2187c9fd237ff4ca32a5'

build() {
  cd $srcdir/$pkgname-$pkgver

   CFLAGS='-ldl' ./configure --prefix=/usr
   make
   make DESTDIR=$pkgdir install
}
