# Contributor: mrtwisted <twisted@online.ua>

_name=eiskaltdcpp
_ver=2.2.5
_ui=gtk
pkgname=${_name}-${_ui}
pkgver=${_ver}
pkgrel=3
license=('GPL3')
arch=('i686' 'x86_64')
depends=('libnotify' 'bzip2' 'pcre' 'lua' 'libidn' 'gtk2')
optdepends=('aspell: spellchecking'
            'php: needed for some option–∞l scripts')
pkgdesc="A GTK+ only (!) version of DC and ADC client based on dcpp core"
url="http://code.google.com/p/eiskaltdc/"
makedepends=('gcc' 'pkgconfig' 'cmake' 'gettext')
conflicts=('eiskaltdcpp-git' 'eiskaltdcpp' 'eiskaltdcpp-gtk3')
provides=('${pkgname}')
options=(!emptydirs)
install=$pkgname.install
source=(http://eiskaltdc.googlecode.com/files/${_name}-${_ver}.tar.xz)

build() {
  cd ${srcdir}
  #patch -Np1 -i ${srcdir}/${_patchname}
  rm -rf ${srcdir}/${_name}-${_ver}/build
  mkdir ${srcdir}/${_name}-${_ver}/build
  cd ${srcdir}/${_name}-${_ver}/build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DUSE_IDNA=ON -DUSE_LIBGNOME2=ON -DLOCAL_MINIUPNP=ON -DUSE_GTK=ON -DUSE_QT=NO -DLOCAL_BOOST=ON -DLUA_SCRIPT=ON -DWITH_DHT=ON -DLinguas="en ru" -DCMAKE_BUILD_TYPE="Release"
  make -j 2
  make DESTDIR=${pkgdir} install
  rm -rf ${srcdir}/${_name}-${_ver}/build
}
md5sums=('062f8b7efe6cf8940c44a0242facefbb')
sha1sums=('25d5cd1c7130a2e76da39c479804615bdcf6f878')

