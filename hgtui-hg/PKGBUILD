#Maintainer: Andrey Galibin <andrey.galibin [at] gmail.com>
pkgname=hgtui-hg
pkgver=228
pkgrel=4
pkgdesc="Textual user interface frontend for DSCM mercurial"
arch=('any')
url="http://code.google.com/p/hgtui/"
license=('GPL')
makedepends=('mercurial')
depends=('python2' 'python2-lxml' 'mercurial' 'ncurses')
provides=('hgtui')
conflicts=('hgtui')
install=

_hgroot="https://code.google.com/p"
_hgrepo="hgtui"

package() {
  cd "$srcdir/$_hgrepo"
  python2 setup.py install --root="${pkgdir}/"
}
