# Maintainer: boenki <boenki at gmx dot de>

pkgname=otter-browser
pkgver=0.1.01
pkgrel=3
pkgdesc="Browser aiming to recreate classic Opera (12.x) UI using Qt5."
arch=('i686' 'x86_64')
url="http://$pkgname.org"
license=('GPL3')
depends=('qt5-webkit')
makedepends=('cmake')
conflicts=('otter-browser-git')
source=($pkgname-$pkgver.tar.gz::https://github.com/Emdek/otter/archive/v$pkgver.tar.gz
        https://raw.github.com/Emdek/otter/master/$pkgname.desktop)
md5sums=('19ff81e517df3966f5d0601be8c4c430'
         'SKIP')

build() {
  cd otter-$pkgver
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="/usr" ../
  make
}

package() {
  cd otter-$pkgver/build
  make DESTDIR=$pkgdir install
  install -Dm644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}