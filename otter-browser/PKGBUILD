# Maintainer: boenki <boenki at gmx dot de>

pkgname=otter-browser
pkgver=0.1.01
pkgrel=2
pkgdesc="Browser aiming to recreate classic Opera (12.x) UI using Qt5."
arch=('i686' 'x86_64')
url="http://otter-browser.org/"
license=('GPL3')
depends=('qt5-webkit')
makedepends=('cmake')
conflicts=('otter-browser-git')
source=(${pkgname}-${pkgver}.tar.gz::https://github.com/Emdek/otter/archive/v$pkgver.tar.gz)
md5sums=('19ff81e517df3966f5d0601be8c4c430')

build() {
  cd otter-$pkgver
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="/usr" ../
  make
}

package() {
  cd otter-$pkgver/build
  make DESTDIR=${pkgdir} install
}