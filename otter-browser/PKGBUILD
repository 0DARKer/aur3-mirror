# Maintainer: boenki <boenki at gmx dot de>

pkgname=otter-browser
pkgver=0.5.01
pkgrel=1
pkgdesc="Browser aiming to recreate classic Opera (12.x) UI using Qt5."
arch=('i686' 'x86_64')
url="http://$pkgname.org"
license=('GPL3')
depends=('qt5-webkit' 'qt5-script')
makedepends=('cmake')
conflicts=('otter-browser-git')
source=($pkgname-$pkgver.tar.gz::https://github.com/Emdek/otter/archive/v$pkgver.tar.gz)
md5sums=('6cfad7d71f1ca15170b50ca7d8a82964')

build() {
  cd otter-$pkgver
  rm -rf build
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="/usr" ../
  make
}

package() {
  cd otter-$pkgver/build
  make DESTDIR=$pkgdir install
}