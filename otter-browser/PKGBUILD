# Maintainer: boenki <boenki at gmx dot de>

pkgname=otter-browser
pkgver=0.2.01
pkgrel=1
pkgdesc="Browser aiming to recreate classic Opera (12.x) UI using Qt5."
arch=('i686' 'x86_64')
url="http://$pkgname.org"
license=('GPL3')
depends=('qt5-webkit')
makedepends=('cmake')
conflicts=('otter-browser-git')
source=($pkgname-$pkgver.tar.gz::https://github.com/Emdek/otter/archive/v$pkgver.tar.gz)
md5sums=('985ecde93c6b3bf548f4080392b8d18b')

build() {
  cd otter-$pkgver
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="/usr" ../
  make
}

package() {
  cd otter-$pkgver/build
  make DESTDIR=$pkgdir install
  install -Dm644 ../$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}