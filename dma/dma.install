pfile='etc/dma/auth.conf etc/dma/dma.conf etc/dma/virtusertable'

dsetup() {
	chown root:mail etc/dma
	chmod 750 etc/dma

	chown root:mail var/spool/dma
	chmod 770 var/spool/dma

	chown root:mail usr/sbin/dma
	chmod g+s usr/sbin/dma
}

post_install() {
	for i in $pfile; do
		chown root:mail $i
		chmod 640 $i
	done

	dsetup
}

post_upgrade() {
	dsetup
}
