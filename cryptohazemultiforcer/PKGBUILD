pkgname=cryptohazemultiforcer
pkgver=1.1
pkgrel=1
pkgdesc="High performance multihash brute forcer with CUDA support"
url="http://www.cryptohaze.com/multiforcer.php"
license=('custom')
arch=('x86_64')
depends=('nvidia')
optdepends=('bumblebee: for nVidia Optimus cards')
source=("http://cryptohaze.com/releases/CryptohazeMultiforcer1_1-Linux.tar.bz2"
        "cryptohazemultiforcer")
sha512sums=("23dad6e5a618f93e4a0f7d7641a348e261dfa6f74d3053993ffa23458b3b4bd0e145c6e7671f202ca1e17556a73c36cf86b1f303dc2d6be8d30393e8b5304ccd"
            "e05c8318b6e178d6b3300a233f713d0acf0d7c64505aeaeed5f9713f1e02ed069b27fbb688a96132ecc7f5f599a5c867c2da45f3aa612ab9876075c83d0335b5")

package() {
    cd "${srcdir}/CryptohazeMultiforcer-Linux"
    mkdir -p "${pkgdir}/opt/${pkgname}/"
    cp -rv "${srcdir}"/CryptohazeMultiforcer-Linux/* "${pkgdir}/opt/${pkgname}"
    mkdir -p "${pkgdir}/usr/bin/"
    install -m755 "${srcdir}/${pkgname}" "${pkgdir}/usr/bin/"
}
