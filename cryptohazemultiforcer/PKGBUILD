pkgname=cryptohazemultiforcer
pkgver=1.0
pkgrel=1
pkgdesc="High performance multihash brute forcer with CUDA support"
url="http://www.cryptohaze.com/multiforcer.php"
license=('custom')
arch=('x86_64')
depends=('nvidia')
optdepends=('bumblebee: for nVidia Optimus cards')
source=("http://cryptohaze.com/releases/CryptohazeMultiforcer1_0-Linux.tar.bz2"
        "cryptohazemultiforcer")
sha512sums=("5f879313752cf73abf399aa1881db3dfd6d65385236c0e9127f3415956a1252e38ea752f5685fe6b5e1ae70134e219349ef80aa10c14c41a656c7ccee27b87ac"
            "e05c8318b6e178d6b3300a233f713d0acf0d7c64505aeaeed5f9713f1e02ed069b27fbb688a96132ecc7f5f599a5c867c2da45f3aa612ab9876075c83d0335b5")

package() {
    cd ${srcdir}/CryptohazeMultiforcer-Linux
    mkdir -p ${pkgdir}/opt/${pkgname}
    cp -r ${srcdir}/CryptohazeMultiforcer-Linux/* ${pkgdir}/opt/${pkgname}
    mkdir -p ${pkgdir}/usr/bin
    install -m 755 ${srcdir}/${pkgname} ${pkgdir}/usr/bin/
}
