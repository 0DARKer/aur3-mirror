pkgname=aurploader
pkgver=2012.12.24
pkgrel=1
pkgdesc='upload packages to the AUR'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/aurploader"
depends=(curl python3)
source=(
  http://xyne.archlinux.ca/projects/aurploader/src/aurploader-2012.12.24.tar.xz
  http://xyne.archlinux.ca/projects/aurploader/src/aurploader-2012.12.24.tar.xz.sig
)
sha512sums=(
  f5cfe56d842356068ba452043e5f760dbc39caf184a4d0d140b1d18fc848fd014302d629a5f601e9ff26e7c564f079aa2548e0f0110dbb5efa7d454b215098de
  a5696b4198f92a107f39493f961fc5b2a8f83f6067df6061541e1b02f11b9f05e9f8e8105d9be59ab4ae14e7a5c27e24f1760c11dce814c1bb9c8891634bfcfe
)
md5sums=(
  86c776365da3edbff9a3487b05c7f422
  fcbe033688d11007517ffb608a099923
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


