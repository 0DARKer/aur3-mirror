depends=(curl python3)
source=(
  http://xyne.archlinux.ca/projects/aurploader/archives/aurploader-2012.7.24.1.tar.xz
  http://xyne.archlinux.ca/projects/aurploader/archives/aurploader-2012.7.24.1.tar.xz.sig
)
sha512sums=(
  c1afd4bb0f826306bc698451d7cc5b59fcff6a54365bffe1cc75311689c117600b53f9a48f070c9e85d3141bcc770b6c049cb86ea8b168e607e175050b4a8deb
  be08e04c65088a018e39faf2a2da1ca53fea707f51d309a346517154e3403add1bc5311af941b15b678680c38ebac7c4b2e6bbe32275053acb8f70581e2e5b0d
)
md5sums=(
  3c28f4aa0641db0abdb968935d864fea
  5a4ed4ea79daf7da66960694e7835bfd
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


