md5sums=(
  231968bdae84be89cff945250b61af07
  47393618d9d3b756d2ea41ce578e81ba
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


