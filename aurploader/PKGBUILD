source=(
  http://xyne.archlinux.ca/projects/aurploader/archives/aurploader-2012.7.29.tar.xz
  http://xyne.archlinux.ca/projects/aurploader/archives/aurploader-2012.7.29.tar.xz.sig
)
sha512sums=(
