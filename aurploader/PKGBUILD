pkgname=aurploader
pkgver=2012.11.4
pkgrel=2
pkgdesc='upload packages to the AUR'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/aurploader"
depends=(curl python3)
source=(
  http://xyne.archlinux.ca/projects/aurploader/archives/aurploader-2012.11.4.tar.xz
  http://xyne.archlinux.ca/projects/aurploader/archives/aurploader-2012.11.4.tar.xz.sig
)
sha512sums=(
  723574c8b4007f387e01e9dc00d3a98e069368088cdd87df90e0636f7e20f3b269dcd8f5928a310e7f36c686a8b3450045de019260ad07f04cbd3a48c7cec6f2
  fb51fe9dc704edf5e63badcbc882577b6b39eee4a7dda9509a78123af8f64e5377ebb4d4b60f93880c85c1080b63888aeace1b9d943d237dd265686a06a79044
)
md5sums=(
  621dc0bd273ffe8dabfa80004b1f93d1
  e1ea4f43e210f189d6547a091bd1de4b
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


