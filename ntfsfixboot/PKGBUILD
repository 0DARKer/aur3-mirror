# Contributor: Changaco <changaco ατ changaco δοτ net>

pkgname=ntfsfixboot
pkgver=0.9
pkgrel=1
pkgdesc="A program to fix an NTFS partition boot sector"
arch=(i686 x86_64)
url="http://www.linux-ntfs.org/doku.php?id=contrib:ntfsreloc"
license=('GPL')
depends=()
makedepends=()
optdepends=()
source=('ntfsfixboot.c::http://homedir.jct.ac.il/~shaneh/ntfsreloc.c')
md5sums=('2172b3238dcee47332e2e3fb4edb6024')

build() {
	cd "$srcdir"
	gcc -g -Wall ntfsfixboot.c -o ntfsfixboot
}

package() {
	mkdir -p "$pkgdir/usr/bin"
	install -m755 "$srcdir/ntfsfixboot" "$pkgdir/usr/bin"
}
