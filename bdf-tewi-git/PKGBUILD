# Maintainer: lucy <lucy@luz.lu>

pkgname=bdf-tewi-git
_gitname=tewi-font
pkgver=0.162.8febf58
pkgrel=2
pkgdesc='Bitmap font'
arch=('any')
url="https://github.com/neeee/tewi-font"
license=('custom:GPL3')
depends=('xorg-fonts-encodings' 'xorg-font-utils')
makedepends=('git')
install="$pkgname.install"
source=('git://github.com/neeee/tewi-font.git')
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/$_gitname"
	echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

package() {
	cd "$srcdir/$_gitname"
	install -Dm644 "COPYING"            "$pkgdir/usr/share/licenses/$pkgname/COPYING"
	install -Dm644 "Tewi-bold-11.bdf"   "$pkgdir/usr/share/fonts/misc/Tewi-bold-11.bdf"
	install -Dm644 "Tewi-normal-11.bdf" "$pkgdir/usr/share/fonts/misc/Tewi-normal-11.bdf"
}
