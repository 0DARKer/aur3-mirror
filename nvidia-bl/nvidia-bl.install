post_install() {
  depmod $(uname -r)
  echo "Add nvidia_bl to the modules array of your rc.conf"
  echo "Add acpi_backlight=vendor to your kernel options in grubs menu.list"
}

post_remove() {
  depmod $(uname -r)
  echo "Remove nvidia_bl from the modules array of your rc.conf"
  echo "Remove acpi_backlight=vendor from your kernel options in grubs menu.list"
}
