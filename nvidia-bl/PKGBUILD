pkgname=nvidia-bl
pkgver=0.17.3
pkgrel=3
pkgdesc="Driver to adjust display backlight on modern mobile NVidia graphics adapters."
arch=('i686' 'x86_64')
license=('GPL')
depends=('linux>=2.6.29.1-3')
makedepends=('linux-headers')
install=nvidia-bl.install
url="https://launchpad.net/~mactel-support/+archive/ppa"
source=('nvidia_bl.c'
        'Makefile'
        'nvidia_bl.conf')
md5sums=('5ba18564188130954bdad60fe5a5fea5'
         '872264c88bcd94842cac1bd59fe8a671'
         '897ee78c30e6b498d0e3ce07c06dabc5')

build() {
  cd ${srcdir}
  make || return 1
  mkdir -p ${pkgdir}/lib/modules/extramodules-`uname -r|awk -F '.' '{print $1"."$2}'`-ARCH/
  mkdir -p ${pkgdir}/etc/modprobe.d/
  install -m 644 nvidia_bl.conf $pkgdir/etc/modprobe.d/nvidia_bl.conf
  install -m 644 nvidia_bl.ko ${pkgdir}/lib/modules/extramodules-`uname -r|awk -F '.' '{print $1"."$2}'`-ARCH/nvidia_bl.ko
}

