# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Contributor: Adam Hani Schakaki (krzd) <krzd@krzd.net>
# Based on the gnome-control-center package trunk

_pkgbase=gnome-control-center
pkgname=gnome-control-center-dev
pkgver=2.91.91
pkgrel=1
pkgdesc="The Control Center for GNOME"
arch=('i686' 'x86_64')
depends=('gtk3>=2.91.6' 'gsettings-desktop-schemas-dev>=0.1.7' 'gconf' 'gnome-menus' 'gnome-desktop-3.0' 'gnome-settings-daemon-dev>=2.91.91' 'upower' 'libgtop>=2.0' 'glib2>=2.25.11' 'libcanberra-gtk3>=0.13' 'gdk-pixbuf-dev>=2.23.0' 'libgnomekbd-dev')
makedepends=('gnome-doc-utils>=0.20.1' 'intltool' 'networkmanager-beta>=0.8.992' 'libxslt' 'gtk-doc')
groups=('gnome')
url="http://www.gnome.org"
install=gnome-control-center.install
license=('GPL')
provides=("${_pkgbase}=${pkgver}")
conflicts=("${_pkgbase}")
options=('!libtool' '!emptydirs')
source=(http://ftp.gnome.org/pub/GNOME/sources/${_pkgbase}/2.91/${_pkgbase}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static --disable-scrollkeeper --disable-update-mimedb
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${_pkgbase}.schemas" --domain gnome-control-center-2.0 "${pkgdir}"/etc/gconf/schemas/*.schemas
  rm -f "${pkgdir}"/etc/gconf/schemas/*.schemas
}