_pkg=gnome-control-center
pkgname=gnome-control-center-dev
pkgver=2.91.6
pkgrel=1
pkgdesc="The Control Center for GNOME"
arch=('i686' 'x86_64')
depends=('libxss' 'desktop-file-utils' 'gnome-settings-daemon-dev' 'libgnomekbd-dev' 'libcanberra-gtk3' 'sound-theme-freedesktop' 'libunique>=1.1.6' 'gnome-menus>=2.30.5' 'evolution-data-server>=2.32.1' 'librsvg>=2.32.1' 'gdk-pixbuf-dev' 'upower' 'libgtop>=2.0')
makedepends=('gnome-doc-utils>=0.20.1' 'intltool')
url="http://www.gnome.org"
install=gnome-control-center.install
provides=("${_pkg}=${pkgver}")
conflicts=("${_pkg}")
license=('GPL')
options=('!libtool' '!emptydirs')
source=(http://ftp.gnome.org/pub/GNOME/sources/${_pkg}/2.91/${_pkg}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd "${_pkg}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static --enable-aboutme \
      --disable-scrollkeeper --disable-update-mimedb
  make
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install

  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${_pkg}.schemas" --domain gnome-control-center-3.0 ${pkgdir}/etc/gconf/schemas/*.schemas
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas

  # --disable-update-mimedb?
  rm -f "${pkgdir}/usr/share/applications/mimeinfo.cache"
  rm -r "${pkgdir}/usr/share/sounds/gnome/default/alerts/"
}
