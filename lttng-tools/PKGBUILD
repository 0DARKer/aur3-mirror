# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=lttng-tools
pkgver=2.0.3
pkgrel=1
pkgdesc="Trace control client for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL2 LGPL2')
provides=('lttng')
source=(http://lttng.org/files/$pkgname/$pkgname-$pkgver.tar.bz2)
depends=('lttng-modules>=2.0.0' 'liburcu>=0.6.7' 'lttng-ust')
optdepends=('babeltrace')
sha1sums=('4a0564e87c3ddeabc553fabed7f7f57574b15bf0')

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
