# Maintainer: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=lttng-tools
pkgver=2.0.1
pkgrel=2
pkgdesc="Trace control client for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL2 LGPL2')
provides=('lttng')
source=(http://lttng.org/files/$pkgname/$pkgname-$pkgver.tar.bz2)
depends=('lttng-modules>=2.0.0' 'liburcu>=0.6.7' 'lttng-ust')
optdepends=('babeltrace')
sha1sums=('fa6a0e0ebb04a194c3c6a29181c9864c3cf55634')

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	./configure
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
