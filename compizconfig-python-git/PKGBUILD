pkgname=compizconfig-python-git
pkgver=0.9.5
pkgrel=1
pkgdesc="Latest development version of the Compizconfig bindings for python"
arch=('i686' 'x86_64')
url="http://compiz.org"
license=('GPL')
provides=('compizconfig-python')
conflicts=('compizconfig-python')
depends=('compiz-core-git' 'libcompizconfig-git' 'glib2' 'python2')
makedepends=('intltool' 'pkgconfig' 'cython')

build()
{
  cd "${srcdir}"

  git clone git://git.compiz.org/compiz/compizconfig/compizconfig-python/
  cd compizconfig-python

  env PKG_CONFIG_PATH="/usr/lib/pkgconfig:$PKG_CONFIG_PATH" \
	python2 setup.py build
  env PKG_CONFIG_PATH="/usr/lib/pkgconfig:$PKG_CONFIG_PATH" \
	python2 setup.py install --prefix="/usr" --root="$pkgdir"
}
