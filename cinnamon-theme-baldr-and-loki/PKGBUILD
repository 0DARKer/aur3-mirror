# Maintainer: gareth_c 

pkgname=cinnamon-theme-baldr-and-loki
pkgver=3.0
pkgrel=2
pkgdesc="Baldr & Loki (Has Cinnamon 1.4 Support)"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/38"
license=('GPL')
depends=('cinnamon' 'gtk3')
source=('http://cinnamon-spices.linuxmint.com/uploads/themes/POJ0-KIBN-MI5G.zip')
md5sums=('70198e90db0241a382de0d721e0a3f34')
build() {
        cd ${srcdir}/Baldr\ and\ Loki/Baldr/
        baldr_dir="$pkgdir/usr/share/themes/baldr/"
        mkdir -p $baldr_dir
        find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/baldr/{}" \;

     cd ${srcdir}/Baldr\ and\ Loki/Loki/
        loki_dir="$pkgdir/usr/share/themes/loki/"
        mkdir -p $loki_dir
        find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/loki/{}" \;
}

