pkgname=cinnamon-theme-baldr-and-loki
pkgver=3.2.4
pkgrel=1
pkgdesc="White and dark monochrome themes where all highlighting is achieved with an inner shadow effect"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/38"
license=('GPL')
depends=('cinnamon')
source=("http://cinnamon-spices.linuxmint.com/uploads/themes/MNTH-Q4RK-IZLZ.zip")
md5sums=('bf08f9bb338c33db32655524c6f55ce6')

package() {
  cd Baldr\ and\ Loki/
  find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}
