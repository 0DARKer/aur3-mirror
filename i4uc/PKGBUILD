# Contributor: Matias De la Puente <mfpuente.ar@gmail.com>
pkgname=i4uc
pkgver=0.5.6
pkgrel=1
pkgdesc="IDE for microcontrollers"
arch=('i686' 'x86_64')
url="http://trac.usla.org.ar/i4uc"
license=('GPLv3')
depends=('gtksourceview2' 'hal' 'libgee')
makedepends=('intltool')
optdepends=('sdcc' 'picp' 'pk2cmd' 'cross-arm-elf-gcc' 'lpc21isp' 'gcc-avr' 'gcc-msp430' 'srecord' 'cross-arm-none-eabi-gcc' 'avrdude')
source=(http://trac.usla.org.ar/i4uc/raw-attachment/wiki/Descargas/$pkgname-$pkgver.tar.bz2)
sha256sums=('e1b92dbfd7ca12da8450a455dacf957090faad698ed07fbec9862a34e34b2f3d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
