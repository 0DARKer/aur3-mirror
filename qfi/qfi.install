post_install () {
    echo
    echo "==> To turn on directory-switching targets, add this to your .bashrc:"
    echo "==>     source /usr/share/qfi/wrapper.sh"
    echo "==>"
    echo "==> or, if you use zsh, add this to your .zshrc:"
    echo "==>     emulate sh -c 'source /usr/share/qfi/wrapper.sh'"
    echo
}

post_upgrade () {
    post_install
}
