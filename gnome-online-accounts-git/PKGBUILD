_pkgname=gnome-online-accounts
pkgname=$_pkgname-git
pkgver=20130320
pkgrel=1
pkgdesc="GNOME service to access online accounts"
arch=(i686 x86_64)
url="http://www.gnome.org"
license=('GPL')
depends=('webkitgtk3' 'json-glib' 'libnotify' 'rest' 'hicolor-icon-theme' 'libsecret' 'libxml2')
makedepends=('intltool' 'libxslt' 'gobject-introspection' 'docbook-xsl')
options=(!libtool)
install=$_pkgname.install
replaces=('gnome-online-accounts')
provides=('gnome-online-accounts')
conflicts=('gnome-online-accounts' 'gnome-online-accounts=3.7.92')

_gitroot="git://git.gnome.org/gnome-online-accounts"
_gitname="gnome-online-accounts"

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
    
    cd $_gitname
    
    git checkout -b gnome-3-8 origin/gnome-3-8
    
    cd ..
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  msg "Starting build"
  ./autogen.sh --prefix=/usr --libexec=/usr/lib/gnome-online-accounts --disable-static \
			   --enable-exchange --enable-flickr --enable-google --enable-imap-smtp \
			   --enable-owncloud --enable-yahoo --enable-facebook \
			   --enable-windows-live --enable-kerberos  # --enable-twitter
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir" install
  rm -rf "$srcdir/$_gitname-build"
}

