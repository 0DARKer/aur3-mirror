# Contributor: Charles Leclerc <charles at la-mouette.net>
pkgname=iscan-plugin-gt-f700
pkgver=2.1.2
pkgrel=1
pkgdesc="iscan plugin for Epson Perfection Photo V350 scanners."
arch=('i686' 'x86_64')
url="http://www.avasys.jp/english/linux_e/"
license=('custom')
depends=('iscan')
makedepends=('rpmextract')
install=gt-f700.install

if [ "$CARCH" = "i686" ] ; then
  source=(http://linux.avasys.jp/drivers/iscan-plugins/${pkgname}/${pkgver}/${pkgname}-${pkgver}-${pkgrel}.i386.rpm)
  ARCH=i386
  md5sums=('23899901be184513145b891759786e2c')
elif [ "$CARCH" = "x86_64" ] ; then
  source=(http://linux.avasys.jp/drivers/iscan-plugins/${pkgname}/${pkgver}/${pkgname}-${pkgver}-${pkgrel}.x86_64.rpm)
  ARCH=x86_64
  md5sums=('876ac216faf8a618a9dca1d779156389')
fi


build() {
  cd "$startdir"
  rpmextract.sh "$pkgname-${pkgver}-${pkgrel}.$ARCH.rpm"
  mv usr "$pkgdir"
  mkdir -p $pkgdir/usr/share/licenses
  mv $pkgdir/usr/share/doc/$pkgname-${pkgver%_*} $pkgdir/usr/share/licenses/
  rmdir $pkgdir/usr/share/doc
}

