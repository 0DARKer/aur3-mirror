# Contributor: Charles Leclerc <charles at la-mouette.net>
pkgname=iscan-plugin-gt-f700
pkgver=2.1.0_3
pkgrel=1
pkgdesc="iscan plugin for Epson Perfection Photo V350 scanners."
arch=('i686' 'x86_64')
url="http://www.avasys.jp/english/linux_e/"
license=('custom')
depends=('iscan')
makedepends=('rpmextract')
install=gt-f700.install

if [ "$CARCH" = "i686" ] ; then
  source=(http://linux.avasys.jp/drivers/scanner-plugins/GT-F700/$pkgname-${pkgver//_/-}.c2.i386.rpm)
  ARCH=i386
  md5sums=('314a471e2cfa99eff045d4870b94e561')
elif [ "$CARCH" = "x86_64" ] ; then
  source=(http://linux.avasys.jp/drivers/scanner-plugins/GT-F700/$pkgname-${pkgver//_/-}.c2.x86_64.rpm)
  ARCH=x86_64
  md5sums=('2fe7e24d7cc1100ceccd2fa02d552bb6')
fi


build() {
  cd "$startdir"
  rpmextract.sh "$pkgname-${pkgver//_/-}.c2.$ARCH.rpm"
  mv usr "$pkgdir"
  mkdir $pkgdir/usr/share/licences
  mv $pkgdir/usr/share/doc/$pkgname-${pkgver%_*} $pkgdir/usr/share/licences/
  rmdir $pkgdir/usr/share/doc
}

