# Maintainer: Yosef Or Boczko <yoseforb@gmail.com>

_pkgname=geoclue2
pkgname=$_pkgname-git
pkgver=40.0a76e4f
pkgrel=1
pkgdesc="API documentation browser for GNOME"
arch=(i686 x86_64)
license=('LGPL2+')
url="https://gitorious.org/geoclue2/geoclue2/blobs/master/README"
depends=('geocode-glib>=0.99.1'  'glib2')
makedepends=('git' 'intltool' 'gobject-introspection')
options=('!libtool' '!emptydirs')
conflicts=('geoclue2')
replaces=('geoclue2')
provides=('geoclue2')
source=('git://gitorious.org/geoclue2/geoclue2.git')
sha256sums=('SKIP')

 pkgver() {
  cd "$srcdir/$_pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$_pkgname"

  ./autogen.sh --prefix=/usr --disable-schemas-compile --enable-gtk-doc
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="${pkgdir}" install
}
