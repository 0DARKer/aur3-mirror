# Maintainer: BxS <bxsbxs@gmail.com>

pkgname=hitech-picc-18_bin
_pkgver=9.66
pkgver=$_pkgver.8870
pkgrel=1
pkgdesc="C compiler for PIC18 MCUs"
arch=('i686' 'x86_64')
url="http://www.microchip.com/stellent/idcplg?IdcService=SS_GET_PAGE&nodeId=1406&dDocName=en542861"
license=('custom')
[ "$CARCH" = "x86_64" ] && depends=('lib32-glibc')
provides=(hitech-picc-18)
conflicts=(hitech-picc-18)
replaces=(hitech-picc-18)
options=(!strip docs libtool emptydirs !zipman)
install=hitech-picc-18_bin.install
_installer="picc-18-pro_$pkgver-linux.run"
source=("http://ww1.microchip.com/downloads/mplab/X_Beta/$_installer")
md5sums=('276e589647fe558b9404ddeefe8c31ef')

build() {
  cd $srcdir

  chmod 0755 $_installer
}

package() {
  cd $pkgdir

  _install_dir="$pkgdir/opt/hitech/picc-18/$_pkgver"

  mkdir -p $_install_dir

  $srcdir/$_installer --noexec --nox11 --target $_install_dir &> '/dev/null'

  rm $_install_dir/shell-install
  rm $_install_dir/bin/{activate,activate.dat}

  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  ln -s "/opt/hitech/picc-18/$_pkgver/licence.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}