# Maintainer: Tim Besard <tim.besard@gmail.com>
pkgname=texlive-subfiles
pkgver=1.0
pkgrel=2
pkgdesc="Individual typesetting of subfiles of a "main" document."
arch=(i686 x86_64)
url="http://ctan.org/tex-archive/macros/latex/contrib/subfiles"
license=('GPL')
depends=('texlive-core')
source=('http://mirror.ctan.org/macros/latex/contrib/subfiles.zip')
md5sums=('aecd26e174c0377b34c8f95f248e8c75')

build() {
  cd "$srcdir/subfiles"
  latex -interaction=batchmode subfiles.ins
}

package() {
  cd "$srcdir/subfiles"
  install -dm755 $pkgdir/usr/share/texmf/tex/latex/
  mv subfiles.sty $pkgdir/usr/share/texmf/tex/latex/
  mv subfiles.cls $pkgdir/usr/share/texmf/tex/latex/
}

# vim:set ts=2 sw=2 et:

