pkgname=octave-ad
pkgver=1.0.6
pkgrel=1
pkgdesc="Automatic Forward Differentiation"
arch=(any)
url="http://octave.sourceforge.net/ad/"
license=('GPL2+')
groups=('octave-forge')
depends=('octave>=3.0.0')
makedepends=()
optdepends=()
backup=()
options=()
install=$pkgname.install
_archive=ad-$pkgver.tar.gz
source=("http://downloads.sourceforge.net/octave/$_archive")
noextract=("$_archive")
md5sums=('9162813e37bad34c4277a30dd9d968da')

build() {
  cd "$srcdir"
  mkdir -p builddir
  octave -q -f --eval "pkg build -verbose -nodeps builddir $_archive"
}

package() {
  mkdir -p "$pkgdir/usr/share/octave/packages"
  mkdir -p "$pkgdir/usr/lib/octave/packages"
  cp "$srcdir/builddir/$_archive" "$pkgdir/usr/share/octave/ad.tar.gz"
}
