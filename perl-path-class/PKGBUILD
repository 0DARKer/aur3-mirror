pkgname='perl-path-class'
pkgver='0.19'
pkgrel='1'
pkgdesc="Cross-platform path specification manipulation"
arch=('any')
url='http://search.cpan.org/dist/Path-Class'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/K/KW/KWILLIAMS/Path-Class-0.19.tar.gz')
md5sums=('866422ed3d21082210a7c523ebca7d15')

build() {
  DIST_DIR="${srcdir}/Path-Class-0.19"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

