# Contributor: Enrico Morelli <morelli@cerm.unifi.it>
pkgname=wine-doors
pkgver=0.1.3
pkgrel=2
pkgdesc="Application designed to make installing windows software on Linux easier"
arch=(i686 x86_64)
url="http://www.wine-doors.org"
license=('GPL')
depends=("wine" "gnome-python-desktop" "pycairo" "python-lxml" "libglade" "orange" "cabextract" "xorg-utils" "librsvg")
source=(http://www.wine-doors.org/releases/$pkgname-$pkgver.tar.gz preferences.xml)
md5sums=('6e3222aec59439e7bc1c2387092fb251'
         '53b78d7b8d5791118336aa5eede2a8f8')
	 

build() {
	#--
	mkdir -pv $startdir/pkg/usr/share/wine-doors/dtd
	install -v -m 644 $startdir/src/$pkgname-$pkgver/dtd/* $startdir/pkg/usr/share/wine-doors/dtd/
	#--
	mkdir -pv $startdir/pkg/usr/share/wine-doors/pixmaps
	install -v -m 644 $startdir/src/$pkgname-$pkgver/pixmaps/* $startdir/pkg/usr/share/wine-doors/pixmaps/
	#--
	mkdir -pv $startdir/pkg/usr/share/wine-doors/registry
	install -v -m 644 $startdir/src/$pkgname-$pkgver/registry/* $startdir/pkg/usr/share/wine-doors/registry
	#--
	mkdir -pv $startdir/pkg/usr/share/wine-doors/src
	install -v -m 644 $startdir/src/$pkgname-$pkgver/src/* $startdir/pkg/usr/share/wine-doors/src/
	chmod 755 $startdir/pkg/usr/share/wine-doors/src/winedoors.py
	#--
	mkdir -pv $startdir/pkg/usr/share/applications
	install -v -m 644 $startdir/src/$pkgname-$pkgver/dist/debian/wine-doors.desktop $startdir/pkg/usr/share/applications/
	#--
	mkdir -pv $startdir/pkg/usr/bin
	ln -s ../../usr/share/wine-doors/src/winedoors.py $startdir/pkg/usr/bin/wine-doors
	#--
	mkdir -pv $startdir/pkg/etc/wine-doors
	install -v -m 644 $startdir/preferences.xml $startdir/pkg/etc/wine-doors/

}



