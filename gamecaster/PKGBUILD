pkgname=gamecaster
pkgver=0.3    
pkgrel=3
arch='any'
pkgdesc="Gamecaster is a graphical user interface for open source framework 'glc'."
depends=('ffmpeg' 'xdotool' 'glc' 'vorbis-tools' 'mkvtoolnix-cli' 'python2' 'gnome-menus2' 'libappindicator3' 'python2-distutils-extra')
url="https://launchpad.net/gamecaster"
source=(https://launchpadlibrarian.net/111326264/$pkgname-$pkgver.tar.gz)
license='GPL'
md5sums=('17364d4b3aca0d6530730581a4a5ca6f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root=$pkgdir
  mv $pkgdir/usr/bin/gamecaster $pkgdir/usr/bin/gamecaster.sh
  echo -e '#!/bin/bash\nLANG=C /usr/bin/gamecaster.sh' > $pkgdir/usr/bin/gamecaster
  chmod +x $pkgdir/usr/bin/gamecaster
}

