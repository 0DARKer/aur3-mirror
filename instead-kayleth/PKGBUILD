# Maintainer goom <psylinuxoid@gmail.com>

pkgname=instead-kayleth
pkgver=0.3
pkgrel=1
pkgdesc="Quest for instead."
arch=('any')
url="http://instead-games.googlecode.com/"
license=('custom')
depends=('instead')
source=(http://instead-games.googlecode.com/files/instead-kayleth-0.3.zip)
sha1sums=('86eef580927d178e96792747f09c664a81d868bf')

build() {
	cd "${srcdir}"
	mkdir -p $pkgdir/usr/share/instead/games/kayleth/{images,music,theme}
	install -m644 kayleth/images/* $pkgdir/usr/share/instead/games/kayleth/images || return 1
       install -m644 kayleth/music/* $pkgdir/usr/share/instead/games/kayleth/music || return 1
	install -m644 kayleth/theme/* $pkgdir/usr/share/instead/games/kayleth/theme || return 1       
	install -m644 kayleth/{actions.lua,bugs.txt,kayleth.lua,keypad.lua,main.lua,menu.lua,readme-unix.txt,theme.ini} $pkgdir/usr/share/instead/games/kayleth || return 1
}
