pkgname=ttf-monaco
pkgver=5.1
pkgrel=1
pkgdesc="A monospaced sans-serif typeface by Apple Inc."
arch=('any')
license=('unknown')
url="http://www.apple.com/"
depends=('fontconfig')
replaces=('monaco_linux' 'monaco-linux-font')
conflicts=('monaco_linux' 'monaco-linux-font')
install=ttf-monaco.install
source=("http://www.gringod.com/wp-upload/software/Fonts/Monaco_${pkgver}.ttf")
md5sums=('55460f2f94efd53fd5f296afbed56b55')

package() {
  install -Dm644 Monaco_${pkgver}.ttf \
    "${pkgdir}"/usr/share/fonts/TTF/Monaco_Linux.ttf
}
