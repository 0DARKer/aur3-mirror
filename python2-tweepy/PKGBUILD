# Maintainer: alejandrogomez <alejandroogomez@gmail.com>

pkgname=python2-tweepy
pypiname=tweepy
pkgver=2.2
pkgrel=1
pkgdesc="A Python library for accessing the entire Twitter API."
arch=('any')
url="http://pypi.python.org/pypi/tweepy/"
license=('MIT')
depends=('python2-simplejson')
source=(http://pypi.python.org/packages/source/t/$pypiname/$pypiname-$pkgver.tar.gz)
md5sums=('c22454a64a29744e9a0a67ff24afc3b8')

build() {
   cd "$srcdir/$pypiname-$pkgver"

   python2 setup.py install --root="$pkgdir/" --optimize=1
}
