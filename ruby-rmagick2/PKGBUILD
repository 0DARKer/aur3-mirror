# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rmagick2
pkgver=2.13.1
pkgrel=1
pkgdesc="Interface between the Ruby programming language and the ImageMagick"
arch=(any)
url="http://rmagick.rubyforge.org/"
license=(MIT)
depends=('ruby' 'imagemagick')
source=(http://gems.rubyforge.org/gems/rmagick-$pkgver.gem)
noextract=(rmagick-$pkgver.gem)
md5sums=('f528a83789c5abbe540b6227c08b2f5a')
 
build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  #  makepkg will barf when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" rmagick-$pkgver.gem
}
