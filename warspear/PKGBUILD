# Maintainer: Sergey Marochkin <me@ziggi.org>

pkgname='warspear'
pkgver=3.9.0
pkgrel=3
pkgdesc='Warspear Online is a cross-platform massively multiplayer online roleplaying game (MMORPG) for smart phones.'
arch=('i686' 'x86_64')
url='http://warspear-online.com/'
license=('custom')
depends=('glibc>=2.15' 'libx11' 'libgl' 'openal' 'libxft')

_arch='i386'
[ "$CARCH" = "x86_64" ] && _arch='amd64'

source=("http://files.warspear-online.com/repo/pool/non-free/binary-${_arch}/w/warspear/warspear_${pkgver}_${_arch}.deb")
md5sums=('6b59a3b741f43763eb6b3139d4e294e3')
[ "$CARCH" = "x86_64" ] && md5sums=('ef1e7c13a67cf7f37d2b568a05524500')

package() {
	cd $srcdir

	ar x *.deb
	bsdtar xf data.tar.gz -C $pkgdir
}
