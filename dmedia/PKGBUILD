pkgname=dmedia
pkgver=11.08.0
pkgrel=2
pkgdesc="A simple distributed media library."
arch=('any')
url="http://www.kickstarter.com/projects/novacut/novacut-pro-video-editor"
license=('AGPL3')
depends=('python2' 'dbus-python' 'pygobject' 'python-couchdb' 'gstreamer0.10-python' 'python-genshi'
         'python2-oauth' 'python-gnomekeyring')
optdepends=('python-boto')
source=("https://launchpad.net/$pkgname/trunk/11.08/+download/$pkgname-$pkgver.tar.gz")
md5sums=('c9181aaf33c14018d1fed4f6cd3d6af6')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --prefix=/usr --root="$pkgdir" -O1
}
