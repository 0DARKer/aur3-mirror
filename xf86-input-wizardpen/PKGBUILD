pkgname=xf86-input-wizardpen
_realname=xorg-input-wizardpen
pkgver=0.8.0
pkgrel=2
pkgdesc="X.Org Wizardpen/Genius tablet driver for Linux"
arch=('i686' 'x86_64')
url="https://launchpad.net/wizardpen"
license=('GPL2')
makedepends=(xorg-server-devel)
conflicts=(wizardpen-driver wizardpen)
replaces=(wizardpen-driver wizardpen)
source=(http://launchpad.net/wizardpen/trunk/0.8/+download/${_realname}-${pkgver}.tar.gz)
md5sums=('af818b824b1b808c851279ec604a1ac6')

build() { 
  cd "$srcdir/$_realname-$pkgver"

  ./autogen.sh || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1

  rm -rf ${pkgdir}/usr/lib/X11 || return 1
  install -m755 -d "${pkgdir}/etc/X11/xorg.conf.d"
  install -m644 xorg/70-wizardpen.conf "${pkgdir}/etc/X11/xorg.conf.d/"

}
