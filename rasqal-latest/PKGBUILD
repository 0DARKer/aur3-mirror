# Contributor: Lawrence Lee <valheru@facticius.net>
# Contributor: Leif Warner <abimelech@gmail.com>

pkgname=rasqal-latest
_pkgname=rasqal
pkgver=0.9.26
pkgrel=1
pkgdesc="The new version rasqal in extra, which is blocked from being updated at the moment.  Use this new version for 4store or general fun." 
url="http://librdf.org/rasqal"
license=('GPL' 'LGPL')
arch=('i686' 'x86_64')
depends=('raptor' 'mpfr')
options=('!libtool')
conflicts=('rasqal')
source=(http://download.librdf.org/source/${_pkgname}-${pkgver}.tar.gz)
md5sums=('1e9fe5423498f10f636319633855e691')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  ./configure --prefix=/usr \
	--disable-static \
	--enable-release
  make
}

package() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
