# Maintainer: Tim Hatch <tim@timhatch.com>
# Contributor: Jason Giangrande <jgiangrande@clarku.edu>

pkgname=pyusb10
_name=pyusb
pkgver=1.0.0_a0
_realver=${pkgver/_/-}
pkgrel=1
pkgdesc="A native Python module written in C which provides USB access."
arch=('i686' 'x86_64')
url="http://pyusb.berlios.de/"
license=('GPL')
depends=('python' 'libusb')
conflicts=('pyusb')
source=("http://downloads.sourceforge.net/${_name}/${_name}-${_realver}.tar.gz")
md5sums=('a49923be317cfa112ebb3a0f86e8fb9a')
optdepends=('libusb-beta: libusb 1.0 api')

build() {
	cd $startdir/src/$_name-$_realver
	python setup.py install -f --root=$startdir/pkg || return 1
}
