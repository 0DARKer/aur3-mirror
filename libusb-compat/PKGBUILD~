# 12/3/2009
#
pkgname=libusb-compat
pkgver=0.1.3
pkgrel=1
depends=('libusb1')
pkgdesc="A wrapper for libusb1 providing compatibility with libusb0.1 considered legacy"
url="http://sourceforge.net/projects/libusb/"
license=('GPL')
arch=('i686' 'x86_64')

source=("http://downloads.sourceforge.net/project/libusb/$pkgname-0.1/$pkgname-$pkgver/$pkgname-$pkgver.tar.bz2")
md5sums=("570ac2ea085b80d1f74ddc7c6a93c0eb")

build() {
	cd $srcdir/$pkgname-$pkgver

	./configure --prefix=$pkgdir/usr/ || return 1
	make || return 1
	make install || return 1

}

