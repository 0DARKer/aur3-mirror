options=('!emptydirs')
depends=('perl-list-moreutils' 'perl-moose>=1.15')
makedepends=('perl-test-fatal')
url='http://search.cpan.org/dist/MooseX-NonMoose'
source=('http://search.cpan.org/CPAN/authors/id/D/DO/DOY/MooseX-NonMoose-0.22.tar.gz')
