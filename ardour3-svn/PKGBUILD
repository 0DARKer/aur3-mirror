_name=ardour3
pkgname=ardour3-svn
pkgver=10907
pkgrel=1
pkgdesc="A multichannel hard disk recorder and digital audio workstation"
arch=('i686' 'x86_64')
url="http://www.ardour.org/"
license=('GPL2')
depends=('libgnomecanvasmm>=2.12.0' 'liblrdf>=0.4.0' 'liblo' 'aubio'
         'libsmf' 'lilv<=1.0.0' 'suil<=1.0.0' 'desktop-file-utils')
makedepends=('subversion' 'python2' 'boost' 'cppunit>=1.12.0' 'doxygen' 'graphviz')
provides=("$_name")
conflicts=("$_name")
install="$pkgname.install"
source=("$pkgname.desktop")
md5sums=('2736c648e452ae45c703e48cf64f75e7')
        
_svntrunk="http://subversion.ardour.org/svn/ardour2/branches/3.0"
_svnmod="$_name"

build() {
  cd "$srcdir"
  msg "Connecting to SVN server...."

  if [[ -d "$_svnmod/.svn" ]]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD HERE
  #

  python2 waf configure \
    --prefix=/usr \
    --configdir=/etc \
    --docs \
    --freedesktop \
    --lv2 \
    --noconfirm

  python2 waf build
}

package() {
  cd "$srcdir/$_svnmod-build"

  python2 waf --destdir="$pkgdir/" install

  # desktop file
  install -Dm644 "$srcdir/$pkgname.desktop" \
    "$pkgdir/usr/share/applications/$_name.desktop"
}
