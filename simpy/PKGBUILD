# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
pkgname=simpy
pkgver=2.1.0
pkgrel=1
pkgdesc="object-oriented, process-based discrete-event simulation language based on standard Python"
arch=('any')
url="http://simpy.sourceforge.net/"
license=('LGPL')
depends=('python>=2.3')
makedepends=('python>=2.3')
source=(http://downloads.sourceforge.net/sourceforge/simpy/SimPy-$pkgver.tar.gz)
md5sums=('94660fa24452ff8147353f9287f3a078')


build() {
  cd "$srcdir/SimPy-$pkgver"

  python setup.py install --prefix=$pkgdir/usr || return 1

  mkdir -p $pkgdir/usr/share/SimPy/doc
  mkdir -p $pkgdir/usr/share/SimPy/models
  cp -r SimPyDocs/*  $pkgdir/usr/share/SimPy/doc
  cp -r SimPyModels/*  $pkgdir/usr/share/SimPy/models
  cp READ_ME_FIRST.txt  $pkgdir/usr/share/SimPy/

}

# vim:set ts=2 sw=2 et:
