# Maintainer: gareth_c 

pkgname=cinnamon-applet-restart
pkgver=1.02
pkgrel=1
pkgdesc="An applet which allows simple restart Cinnamon with one click."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/applets/view/3"
license=('GPL')
depends=('cinnamon' 'gtk3')
source=('http://cinnamon-spices.linuxmint.com/uploads/applets/V3Z6-QFO8-4RVI.zip')
md5sums=('1827b2724ed40cee79015ef09fb0161b')
build() {
	cd ${srcdir}/restart-cinnamon@kolle/
	
	cinnamon_dir="$pkgdir/usr/share/cinnamon/applets/restart-cinnamon@kolle"

	mkdir -p $cinnamon_dir
	
	install -m0644 metadata.json applet.js $cinnamon_dir
}
