# Maintainer: Johan Rehnberg <cleanrock@gmail.com>
pkgname=flobby-git
pkgver=20130316
pkgrel=1
pkgdesc="spring lobby client"
arch=('i686' 'x86_64')
url="https://github.com/cleanrock/flobby"
license=('unknown')
groups=()
depends=('fltk' 'imagemagick' 'libxpm' 'libxss' 'boost-libs')
makedepends=('git' 'cmake' 'boost')
optdepends=('spring')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=('SKIP') #generate with 'makepkg -g'

_gitroot=https://github.com/cleanrock/flobby.git
_gitname=flobby

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone --depth 1 "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
