#Contributor: karnath <karnathtorjian@gmail.com>
pkgname=libgirara-git
pkgver=20110429
pkgrel=1
pkgdesc="User interface library"
arch=('i686' 'x86_64')
url="https://pwmt.org/projects/libgirara/"
license=('custom')
depends=('gtk2')
makedepends=('git')
conflicts=('libgirara' 'libgirara-git')
provides=('libgirara' 'libgirara-git')

_gitroot="git://pwmt.org/girara.git"
_gitname="girara"

build(){
  cd ${srcdir}
  msg "Connecting to GIT server..."

  if [ -d ${srcdir}/$_gitname ]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
 
  if [ -d ${srcdir}/$_gitname-build ]; then
    rm -rf ${srcdir}/$_gitname-build
  fi

  git clone ${srcdir}/$_gitname ${srcdir}/$_gitname-build || return 1
  cd ${srcdir}/$_gitname-build/ || return 1
  make DESTDIR="$pkgdir" install
  install -D -m664 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

