# Contributor: Michael Mansell <michael.mansell@gmail.com>

pkgname=flirc
_pkgver=1.3.4-1
pkgver=${_pkgver/-/.}
pkgrel=1
pkgdesc="CLI and GUI application to program your Flirc device"
arch=('i686' 'x86_64')
url="http://flirc.tv"
license=('GPL3')
depends=('qt4' 'libusbx')

if [[ "$CARCH" == 'i686' ]]; then
  source=("http://apt.flirc.tv/arch/i386/binary/${pkgname}_${_pkgver}_i386.deb")
  md5sums=('233b54fe0a5da82cae1097c1cf9f117e')
fi
if [[ "$CARCH" == 'x86_64' ]]; then
  source=("http://apt.flirc.tv/arch/x86_64/binary/${pkgname}_${_pkgver}_amd64.deb")
  md5sums=('ed1ed4b1a35491502e476fef81922e43')
fi

package() {
  tar -xf data.tar.xz -C "$pkgdir"

  mv "$pkgdir"/lib "$pkgdir"/usr/
}
