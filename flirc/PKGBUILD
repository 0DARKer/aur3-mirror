# Maintainer: cornholio <vigo.the.unholy.carpathian@gmail.com>

pkgname=flirc
pkgver=0.96
pkgrel=1
pkgdesc="Take control of your media center and the clutter off your living room table"
arch=("i686" "x86_64")
url="http://flirc.tv"
license=("GPL")
depends=("libusbx" "qt4" "gcc-libs")

if [[ "$CARCH" == 'x86_64' ]]; then
	source=("http://apt.flirc.tv/arch/x64/binary/flirc_${pkgver}-1_amd64.deb")
	sha1sums='a0ab3cd514271a4220a43203c4bd4fb51c60502a'
else
	source=("http://apt.flirc.tv/arch/i386/binary/flirc_${pkgver}-1_i386.deb")
	sha1sums='61109668c63e21915b6dbc32e8449124a077ea03'
fi

build() {

	cd "${srcdir}"
	tar xzf data.tar.gz
}

package() {

	cp -r "${srcdir}/usr" "${pkgdir}/"
	cp -r "${srcdir}/etc" "${pkgdir}/"
	mv "${pkgdir}/usr/local/bin" "${pkgdir}/usr/bin"
	rm -r "${pkgdir}/usr/local"
}
