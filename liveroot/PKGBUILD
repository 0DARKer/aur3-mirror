#Maintainer : mark@markelee.com
#Contributor: mark@markelee.com

pkgname='liveroot'
url='https://github.com/bluerider/liveroot.git'
pkgdesc='Initcpio hooks for non persistent boot'
pkgver=2
pkgrel=1
arch=('any')
depends=('zramctl')
makedepends=('git')
source=("git+$url")
sha256sums=('SKIP')

package() {
  install -m755 -d "${pkgdir}/usr/lib/initcpio/hooks"
  install -m755 -d "${pkgdir}/usr/lib/initcpio/install"
  install -m644 "${srcdir}/initcpio/hooks/oroot" "${pkgdir}/usr/lib/initcpio/hooks"
  install -m644 "${srcdir}/initcpio/hooks/croot" "${pkgdir}/usr/lib/initcpio/hooks"
  install -m644 "${srcdir}/initcpio/install/oroot" "${pkgdir}/usr/lib/initcpio/install"
  install -m644 "${srcdir}/initcpio/install/croot" "${pkgdir}/usr/lib/initcpio/install"
}
