#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacman2aria2
pkgver=2011.06.16.2
pkgrel=1
pkgdesc="Convert pacman download URL lists to reflector-augmented aria2c input lists. Includes powerpill-light."
depends=('python3' 'aria2' 'reflector>=2011.04.04')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('896155a52d81140e9dc807ed1756bbf1')

build() {
  cd "$srcdir/$pkgname"
  install -D -m755 "$srcdir/$pkgname/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -D -m755 "$srcdir/$pkgname/powerpill-light" "$pkgdir/usr/bin/powerpill-light"
}

# vim: set ts=2 sw=2 et:
