# Contributor: Xavier de Labouret <arch@2-lab.net>
pkgname=kye
pkgver=0.9.3
pkgrel=2
pkgdesc="An addictive action-puzzle game, where you have to collect all the diamonds without getting stuck or eaten"
arch=('i686')
url="http://games.moria.org.uk/kye/pygtk"
licence=('GPL')
depends=('pygtk')
source=(http://games.moria.org.uk/$pkgname/download/$pkgname-$pkgver.tar.gz)
md5sums=('b6842b346fea0467a94dc39788e8323d')

build()
{
	cd $startdir/src/$pkgname-$pkgver/
	python setup.py install --root=$startdir/pkg

	mkdir -p $startdir/pkg/usr/share/pixmaps/	
	install -D -m644 $startdir/src/$pkgname-$pkgver/kye-icon.png $startdir/pkg/usr/share/pixmaps/
	install -D -m644 $startdir/$pkgname.desktop $startdir/pkg/usr/share/applications/$pkgname.desktop
}
