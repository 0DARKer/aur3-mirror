pkgname=noip
pkgver=2.1.9
pkgrel=1
pkgdesc="Client for no-ip.com dyndns service"
url='https://www.no-ip.com/downloads.php?page=linux'
license=('GPL2')
arch=('i686' 'x86_64')
source=(noip.sh
        config.patch
        makefile.patch
        https://www.no-ip.com/client/linux/noip-duc-linux.tar.gz)
md5sums=('45f0408d0d153851e1f847d79288eb29'
         'fbf5709b05563ea74db562b6eb850cc5'
         'de0fc77f8ec5c035d7e454ea5d1c28a1'
         '3b0f5f2ff8637c73ab337be403252a60')

build() {
  cd "$pkgname"-"$pkgver"-1 || return 1

  patch < $srcdir/makefile.patch
  patch < $srcdir/config.patch

  make || return 1

  install -D noip2 $pkgdir/usr/bin/noip
  install -D $srcdir/noip.sh $pkgdir/etc/rc.d/noip
}
