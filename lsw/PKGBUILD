pkgname=lsw
pkgver=0.2
pkgrel=1
pkgdesc="List window names"
license=(MIT)
arch=(i686 x86_64)
url=http://www.suckless.org/programs/lsw.html
depends=(libx11)
source=("http://dl.suckless.org/tools/$pkgname-$pkgver.tar.gz"
        "makefile.patch")
md5sums=('5ddd61d04ff084a39494b2aa06c00b65'
         'ae850a6a044a11f01a73f56c2f1c5520')

build() {
	cd $startdir/src/$pkgname-$pkgver
	sed -i "s/CFLAGS = /CFLAGS = ${CFLAGS} /" config.mk

	patch $srcdir/$pkgname-$pkgver/Makefile $startdir/makefile.patch
	make X11INC=/usr/lib/X11 X11LIB=/usr/lib/X11
	make PREFIX=/usr MANPREFIX=/usr/share/man DESTDIR=$startdir/pkg install

	install -m644 -D LICENSE $startdir/pkg/usr/share/licenses/$pkgname/COPYING
}

