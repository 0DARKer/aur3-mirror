pkgname=lsw
pkgver=0.1
pkgrel=5
pkgdesc="List window names"
license=(MIT)
arch=(i686 x86_64)
url=http://www.suckless.org/programs/lsw.html
depends=(libx11)
source=(http://dl.suckless.org/tools/$pkgname-$pkgver.tar.gz)
md5sums=('0db1f9d55021ff1352353fb5908a4a92')

build() {
	cd $startdir/src/$pkgname-$pkgver
	sed -i "s/CFLAGS = /CFLAGS = ${CFLAGS} /" config.mk

	make X11INC=/usr/lib/X11 X11LIB=/usr/lib/X11 || return 1
	make PREFIX=/usr MANPREFIX=/usr/man DESTDIR=$startdir/pkg install || return 1

	install -m644 -D LICENSE $startdir/pkg/usr/share/licenses/$pkgname/COPYING
}
