#pkgbase="touchegg-svn"
#pkgname=('touchegg-svn' 'touchegg-gui-svn')
pkgname=touchegg
true && pkgname=('touchegg' 'touchegg-gui') #Darn you, AUR!
pkgver=0.3
pkgrel=1
arch=('i686' 'x86_64')
url="https://code.google.com/p/touchegg/"
license=('GPL')
depends=('qt' 'utouch-geis')
source=("http://touchegg.googlecode.com/files/${pkgname[0]}-${pkgver}.tar.gz"
        "http://touchegg.googlecode.com/files/${pkgname[1]}-${pkgver}.tar.gz")
sha512sums=("889562dfdfa48e60dfd42ec6e3592892b83644fdc2cb0616734e574d27ae27b74f9ce3561beba19315cc738fbad840b97074ddd76cf411aa4a9f76cef3a47e0d"
            "55e962206d580ecaa24802aeca83d65771b86ec4d9bf0cefe790772f51c9009b038e7452a5493db9b54a563833ec6f8f5a34ee6159a08ec99756451e91f09dff")

build() {
  cd "${srcdir}/${pkgname[0]}"
  qmake
  make

  cd "${srcdir}/${pkgname[1]}"
  qmake
  make
}

package_touchegg() {
  pkgdesc="Multitouch gesture recognizer"
  provides=('touchegg')
  conflicts=('touchegg')

  cd "${srcdir}/${pkgname[0]}"
  make INSTALL_ROOT="${pkgdir}" DESTDIR="${pkgdir}" install
}

package_touchegg-gui() {
  pkgdesc="Multitouch gesture recognizer (GUI)"
  provides=('touchegg-gui')
  conflicts=('touchegg-gui')

  cd "${srcdir}/${pkgname[1]}"
  make INSTALL_ROOT="${pkgdir}" DESTDIR="${pkgdir}" install
}

