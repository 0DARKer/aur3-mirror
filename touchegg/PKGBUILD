# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

pkgname=touchegg
pkgver=1.0
pkgrel=2
pkgdesc="Multitouch gesture recognizer"
arch=('i686' 'x86_64')
url="https://code.google.com/p/touchegg/"
license=('GPL')
depends=('qt' 'utouch-geis')
source=("http://${pkgname[0]}.googlecode.com/files/${pkgname[0]}-${pkgver}.tar.gz")
install=touchegg.install
sha512sums=("65ab0411ff6af6a3890ea2fd7867a8bb15661a09be5066ba510acef25cfcadc4c1a884bbaea1196f15e784301b900a165b42375fad055f9484d2449b58598d64")

build() {
  cd "${srcdir}/${pkgname[0]}-${pkgver}"
  qmake
  make
}

package() {
  cd "${srcdir}/${pkgname[0]}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}" DESTDIR="${pkgdir}" install
}

