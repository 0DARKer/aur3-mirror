# Maintainer: Matthew Bauer <mjbauer95@gmail.com>
pkgname=touchegg
pkgver=0.1
pkgrel=1
pkgdesc="multitouch gesture recognizer"
arch=(i686 x86_64)
url="https://code.google.com/p/touchegg/"
license=('GPL')
groups=(lifehacker)
depends=('qt>=4' utouch-geis)
makedepends=()
optdepends=(eggwm)
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('f68c1659ca0de9ad439fc17a02069a27')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  qmake
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make INSTALL_ROOT="$pkgdir/" DESTDIR="$pkgdir/" install
}

