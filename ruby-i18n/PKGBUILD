# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-i18n
pkgver=0.5.0
pkgrel=1
pkgdesc="New wave Internationalization support for Ruby."
arch=(any)
url="http://github.com/svenfuchs/i18n"
license=('MIT')
depends=('ruby')
source=(http://gems.rubyforge.org/gems/i18n-$pkgver.gem)
noextract=(i18n-$pkgver.gem)
md5sums=('761d743478dfbdc4f2c1743d5241c009')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" i18n-$pkgver.gem
}
