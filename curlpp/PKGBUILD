# Contributor: Andreas Baumann <abaumann@yahoo.com>

pkgname=curlpp
pkgver=0.7.3
pkgrel=1
pkgdesc="C++ client API for the Curl web access library"
arch=('i686' 'x86_64')
url="http://code.google.com/p/curlpp/"
makedepends=('curl' 'boost' 'bc')
optdepends=()
depends=('curl>=7.10.0' 'boost')
conflicts=()
provides=()
replaces=()
backup=()
license=('GPL')
options=()
source=(http://curlpp.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('ccc3d30d4b3b5d2cdbed635898c29485')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-boost \
    --enable-static --enable-shared

  make || return 1

  make DESTDIR=${pkgdir} install || return 1

  # also deploy config.h
  cp include/curlpp/config.h ${pkgdir}/usr/include/curlpp/.
}
