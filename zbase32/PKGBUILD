# Contributor: Nicolas Pouillard <nicolas.pouillard@gmail.com>
pkgname=zbase32
pkgver=1.1.2
pkgrel=7
pkgdesc="alternate base32 encoder (not RFC 3548 compliant)"
arch=('i686' 'x86_64')
url='http://tahoe-lafs.org/trac/zbase32'
license=('BSD')
groups=()
depends=('python2')
makedepends=('setuptools' 'python2-argparse' 'pyutil' 'darcsver' 'setuptools_darcs')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=( http://pypi.python.org/packages/source/z/zbase32/zbase32-$pkgver.tar.gz )
noextract=()
md5sums=('d01d5b727df81fc6a8dee5f5d2203062')

build()
{
  cd "$srcdir/$pkgname-$pkgver" || return 1
  python2 setup.py build || return 1
  python2 setup.py test || return 1
  python2 setup.py install --root="$pkgdir" || return 1
}
