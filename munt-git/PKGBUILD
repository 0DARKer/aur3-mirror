# Mantainer: Franco Tortoriello

pkgname=munt-git
pkgdesc="Software synthesiser emulating pre-GM MIDI devices, such as the Roland MT-32"
pkgver=1.2.0_g0e7c197
pkgrel=1
arch=(i686 x86_64)
url="http://munt.sourceforge.net"
license=(LGPL2.1)
makedepends=(git cmake)
source=(git+https://github.com/munt/munt.git)
md5sums=(SKIP)

pkgver() {
  cd "$srcdir/munt"
  git describe --always | sed -e 's/munt_//g' -e 's/_/./g' -e 's/-1-/_/g' -e 's/-/./g'
}

build() {
  cd "$srcdir/munt/mt32emu"
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}

package() {
  cd "$srcdir/munt/mt32emu"
  make DESTDIR="$pkgdir" install
}

