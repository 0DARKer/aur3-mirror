# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=emacs-xlicense
pkgver=1.2
pkgrel=1
pkgdesc="eXtra License mode for Emacs"
arch=('any')
url="http://www.emacswiki.org/emacs/ExtraLicense"
license=('unknown')
depends=('emacs')
source=("http://www.emacswiki.org/emacs/download/xlicense.el")
md5sums=('edc788a8d8191b982b10c6e8d9e57d7f')

build() {
  cd "$srcdir/"
  emacs -Q -batch -L . -f batch-byte-compile xlicense.el
}
package() {
  cd "$srcdir/"
  install -Dm644 xlicense.el \
  	  "$pkgdir/usr/share/emacs/site-lisp/$pkgname/xlicense.el"
  install -Dm644 xlicense.elc \
  	  "$pkgdir/usr/share/emacs/site-lisp/$pkgname/xlicense.elc"
}
