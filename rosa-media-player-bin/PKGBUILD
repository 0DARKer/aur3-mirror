# Maintainer: crazyelf5

pkgname=rosa-media-player-bin
pkgver=0.991
pkgrel=3
pkgdesc="The new multimedia player(based on SMPlayer) with clean and elegant UI."
arch=('i686' 'x86_64')
_arch='x86_64'
[ $CARCH = 'i686' ] && _arch='i586'
url="http://www.rosalab.ru/"
license=('GPL2')
depends=('qt' 'mplayer')
optdepends=('rosa-media-player-plugin: Mozilla plugin [AUR]')
conflicts=('rosa-media-player')
install=$pkgname.install
source=(http://distrib-coffee.ipsl.jussieu.fr/pub/linux/MandrivaLinux/official/2011/$_arch/media/main/backports/rosa-media-player-${pkgver}-${pkgrel}-mdv2011.0.$_arch.rpm)
md5sums=('47cd9e5b8e680fbb292a564a2512610c')
[ $CARCH = 'i686' ] && md5sums='039d50bf2b5695ad0ab69edc3061408a'

package()
{
	cp -rf "$srcdir/usr" "$pkgdir/"
}
