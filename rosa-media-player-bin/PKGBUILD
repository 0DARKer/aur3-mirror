# Maintainer: Ner0

pkgname=rosa-media-player-bin
pkgver=1.0
pkgrel=1
pkgdesc="A front-end for MPlayer based on SMPlayer"
arch=('i686' 'x86_64')
url="http://www.rosalab.ru/"
license=('GPL2')
depends=('qt' 'mplayer')
optdepends=('rosa-media-player-plugin: Mozilla plugin [AUR]')
conflicts=('rosa-media-player')
install=$pkgname.install
source=("http://mirror.yandex.ru/rosa/rosa2012lts/repository/srpms/main/release/rosa-media-player-${pkgver}-0.src.rpm")
md5sums=('7b46358885d9d553bd683bcb89ad8539')

build() {
  tar -xf rosa-media-player-${pkgver}.tar.gz
  cd rosa-media-player

  make PREFIX=/usr
}

package() {
  cd "$srcdir/rosa-media-player"
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}
