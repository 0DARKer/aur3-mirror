pkgrel=1
pkgdesc="Dai Banna SIL Fonts. New Tai Lue (Xishuangbanna Dai) script"
url="http://scripts.sil.org/cms/scripts/page.php?site_id=nrsi&item_id=DaiBannaSIL"
