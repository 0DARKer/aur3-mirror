pkgname='perl-extutils-cbuilder'
pkgver='0.2703'
pkgrel='2'
pkgdesc="Compile and link C code for Perl modules"
arch=('any')
url='http://search.cpan.org/dist/ExtUtils-CBuilder'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/D/DA/DAGOLDEN/ExtUtils-CBuilder-0.2703.tar.gz')
md5sums=('52bd8ec45491625a3501bda2713eac24')

build() {
  DIST_DIR="${srcdir}/ExtUtils-CBuilder-0.2703"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

