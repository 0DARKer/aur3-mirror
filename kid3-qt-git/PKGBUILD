# Maintainer: oke3 <Sekereg at gmx dot com>

pkgname=kid3-qt-git
pkgver=20111204
pkgrel=1
pkgdesc="An MP3, Ogg/Vorbis and FLAC tag editor (without KDE dependencies)"
arch=('i686' 'x86_64')
url="http://kid3.sourceforge.net/"
license=('GPL')
makedepends=('automoc4' 'cmake' 'git')
depends=('id3lib' 'tunepimp' 'taglib' 'qt')
conflicts=('kid3-qt')

_gitroot="git://kid3.git.sourceforge.net/gitroot/kid3/kid3"
_gitname="kid3-qt"

build() {
    cd "$srcdir"

    msg "Connecting to the GIT server...."
    if [[ -d "$_gitname" ]]; then
        cd "$_gitname" && git pull origin
        msg "The local files are updated."
    else
        git clone "$_gitroot" "$_gitname" --depth=1
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting build..."

    cd "${srcdir}/${_gitname}"
    cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DWITH_KDE=OFF \
        -DWITH_PHONON=OFF \
        -DWITH_DBUS=OFF
    make
}

package() {
    cd "${srcdir}/${_gitname}"
    make DESTDIR="$pkgdir" install
}
