pkgver=1.60.0
pkgrel=1
pkgdesc="the base framework for frame crafting"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/Net-Frame/"
license=('artistic')
source=('http://search.cpan.org/CPAN/authors/id/G/GO/GOMOR/Net-Frame-1.06.tar.gz')
md5sums=('4d05f1a2a01928f860a9110d28322e1e')
sha256sums=('95c49bee050e2e0f4af93364e24b9b46665cfa19dc46a661a4cb31d8fbcfd099')
depends=('perl-bit-vector' 'perl-class-gomor>=1.0.0' 'perl-net-ipv6addr' 'perl-socket6')
makedepends=('perl-extutils-makemaker')
provides=('perl-net-frame-layer' 'perl-net-frame-layer-arp' 'perl-net-frame-layer-eth' 'perl-net-frame-layer-ipv4' 'perl-net-frame-layer-null' 'perl-net-frame-layer-ppp' 'perl-net-frame-layer-raw' 'perl-net-frame-layer-sll' 'perl-net-frame-layer-tcp' 'perl-net-frame-layer-udp')
options=(!emptydirs)

build() {
  _dir=$(find $srcdir -maxdepth 2 -type f -name 'Makefile.PL')
  if [ ! -z "$_dir" ]; then
    cd $(dirname "$_dir")
    PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
    make  || return 1
    make install DESTDIR="${pkgdir}" || return 1

  else
  _dir=$(find $srcdir -maxdepth 2 -type f -name 'Build.PL')
  if [ ! -z "$_dir" ]; then
    cd $(dirname "$_dir")
    PERL_MM_USE_DEFAULT=1 perl Build.PL INSTALLDIRS=vendor || return 1
    ./Build  || return 1
    ./Build install destdir=${pkgdir} || return 1

  else
    echo "error: failed to detect build method for $pkgname"
    echo "you may be able to fix this by editing the PKGBUILD"
    return 1
  fi fi

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

