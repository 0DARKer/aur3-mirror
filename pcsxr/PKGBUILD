## Contributor: quantax -- contact via Arch Linux forum or AUR
## Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=pcsxr
pkgver=1.9.92
pkgrel=2
pkgdesc="A Sony PlayStation emulator based on the PCSX-df Project"
arch=('i686' 'x86_64')
url="http://pcsxr.codeplex.com/"
license=('GPL')
depends=(libcdio libgl libglade libxtst libxv sdl)
provides=(pcsx)
conflicts=(pcsx pcsx-df)
replaces=(pcsxr-alsa)
options=(force !libtool)
_codeplex_build="$(wget -qO - http://www.codeplex.com/ | sed -nr 's/^[[:space:]]*Version [[:digit:]]{4}\.([[:digit:]]{1,2}\.){2}([[:digit:]]+)[[:space:]]*$/\2/p' | tail -n 1)"
source=($pkgname-$pkgver.tar.bz2::"http://download.codeplex.com/Project/Download/FileDownload.aspx?ProjectName=$pkgname&DownloadId=140521&FileTime=129254829621800000&Build=$_codeplex_build")
md5sums=('28411aed0b4424f97227d94bdefaec83')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr --enable-libcdio --enable-opengl
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}

