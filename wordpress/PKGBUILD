pkgname=wordpress
pkgver=3.0.3
pkgrel=1
pkgdesc="Blog Tool and Publishing Platform"
arch=('i686' 'x86_64')
url=("http://wordpress.org/")
license=('GPL')
depends=('php' 'mysql')
optdepends=('apache: Web server to run wordpress' 'cherokee: Lightweight Web server to run wordpress')
install=${pkgname}.install
source=(http://wordpress.org/${pkgname}-${pkgver}.tar.gz)
md5sums=('c9f2c1db36a78d62596bc97d90bf00ae')

build() {
	install -d ${pkgdir}/srv/http/wordpress
	cp -r ${srcdir}/wordpress/* ${pkgdir}/srv/http/wordpress
}

