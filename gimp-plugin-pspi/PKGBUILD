pkgname=gimp-plugin-pspi
pkgver=1.0.7
pkgrel=3
pkgdesc="Pspi is a GIMP plug-in that runs 3rd-party Photoshop plug-in filters."
arch=(i686)
url="http://www.gimp.org/~tml/gimp/win32/pspi.html"
license=('MIT')
depends=('gimp' 'wine')
source=(http://www.gimp.org/~tml/gimp/win32/gimp-pspi-$pkgver-linux-objects.tar.gz)
md5sums=('85c1a375ee1d7f24d433e0b916b699e9')

build() {
	cd $srcdir
	winegcc -o pspi *.o $(pkg-config --libs gimp-2.0) $(pkg-config --libs gimpui-2.0) -ladvapi32 -lgdi32
	
	install -D -m 755 pspi.exe $pkgdir/usr/lib/gimp/2.0/plug-ins/pspi.exe
	install -D -m 755 pspi.exe.so $pkgdir/usr/lib/gimp/2.0/plug-ins/pspi.exe.so
}

