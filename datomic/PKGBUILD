# Maintainer: Daichi Shinozaki <dsdseg at gmail dot com>
pkgname=datomic
pkgver=0.8.3731
pkgrel=1
pkgdesc="A database of flexible,time-based facts,supporting queries and joins,with elastic scalability,and ACID transactions"
arch=('any')
# http://downloads.datomic.com/free.html
url="http://www.datomic.com/"
license=('custom:DatomicFreeEditionLicense')
depends=('java-environment' 'maven' 'clojure')
makedepends=('unzip')
optdepends=('leiningen')
options=(!strip)
source=("http://downloads.datomic.com/$pkgver/$pkgname-free-$pkgver.zip")
md5sums=('99d1cbe1c352f3dc0d89a6f33bb54c27')

package() {
  _pkgname="$pkgname-free-$pkgver"
  install -d "$pkgdir"/opt
  install -Dm644 $srcdir/$_pkgname/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
  cp -R "$srcdir/$_pkgname" "$pkgdir/opt/$pkgname"
}

# vim:set ts=2 sw=2 et:
