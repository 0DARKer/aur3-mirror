pkgname=boost-svn
_svntrunk=http://svn.boost.org/svn/boost/trunk
# Fixed version, because the newest svn version may not to compile successfully.
# svn log http://svn.boost.org/svn/boost/trunk --limit 1 | grep -m 1 -o r.* | cut -d \| -f 1 | sed s@r@@g
pkgver=72045 
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.boost.org/"
license=('custom')

depends=('icu' 'python' 'python2' 'openmpi' 'docbook-xml' 'docbook-xsl' 'libxslt' 'doxygen')

conflicts=('boost' 'boost-libs' 'boost-build')
provides=('boost' 'boost-libs' 'boost-build' 'boost-tools')

pkgdesc="Free peer-reviewed portable C++ source libraries. Include boost tools."

source=(boost-build boost-svn.install cleaner)
install=boost-svn.install
_boostdir="${srcdir}/boost-trunk"
_stagedir="${srcdir}/stage"
_builddir="${srcdir}/build"

# _svnmod=boost # Do not uncomment this line.


build() {
	cd ${srcdir}
	svn co ${_svntrunk} ${_boostdir} -r ${pkgver}

	# build bjam 
	# Don't remove this unless you want to build by hand.
	cd "${_boostdir}"
	./bootstrap.sh
	_bjampath="${_boostdir}/bjam"
	_boostbook_path="${_boostdir}/tools/boostbook"

	#
	# Setting project-config.jam for boost build
	#
	# OK, I know python is huge and complex (slow maybe).
	# However, you have to install it before make anyway.
	# And python is more powerful, and also KISS.
	#
	python3 "${srcdir}/boost-build" setup \
		-u project-config.jam \
		-s project-config.jam \
		-b ${_boostbook_path}

	# ======================================================================== #
	# build libs
	# FIXME: Chrono cannot pass compile. 
	# ======================================================================== #

	${_bjampath} release \
		--without-chrono \
		--prefix=${_stagedir} \
		${MAKEFLAGS} \
		install

	# ======================================================================== #
	# build tools
	# ======================================================================== #

	cd "${_boostdir}/tools"
	${_bjampath} release ${MAKEFLAGS} 
	install -m755 "${_boostdir}/bjam" "${_boostdir}/dist/bin/bjam"

	# ======================================================================== #
	# build Documentation
	# ======================================================================== #

	cd "${_boostdir}/doc"
	rm html -rf
	${_bjampath} release 
}

package(){
	# All this parts are independent. You can remove anyone is you don't like it.

	# ======================================================================== #
	# =======================          Boost           ======================= #
	# ======================================================================== #

	#pkgdesc="Free peer-reviewed portable C++ source libraries - Development"
	#depends=("boost-libs-svn=${pkgver}")
	#optdepends=('python: for python bindings' 'python2: for python2 bindings')
	#conflicts=('boost')
	#provides=('boost')

	install -d "${pkgdir}"/usr/{include,lib}

	# headers/source files
	cp -r "${_stagedir}"/include/ "${pkgdir}"/usr/

	# static libs
	cp -r "${_stagedir}"/lib/*.a "${pkgdir}"/usr/lib/

	# license
	install -D -m644 "${_boostdir}/LICENSE_1_0.txt" \
		"${pkgdir}"/usr/share/licenses/boost/LICENSE_1_0.txt

	# ======================================================================== #
	# =======================        Boost Libs        ======================= #
	# ======================================================================== #

	#pkgdesc="Free peer-reviewed portable C++ source libraries - Runtime"
	#depends=('gcc-libs' 'icu')
	#optdepends=('openmpi: for mpi support')
	#conflicts=('boost-libs')
	#provides=('boost-libs')

	install -d "${pkgdir}/usr/lib"

	#shared libs
	cp -r "${_stagedir}"/lib/*.so{,.*} "${pkgdir}/usr/lib/"

	# ======================================================================== #
	# =======================        BoostTools        ======================= #
	# ======================================================================== #

	#pkgdesc="Toolset of Boost, include boostbuild, boostbook, bcp, etc."
	#depends=("python" "openmpi" "docbook-xml" "docbook-xsl" "libxslt" "doxygen")
	#conflicts=('boost-build' 'boost-tools')
	#provides=('boost-build' 'boost-tools')
	
	cp -r "${_boostdir}"/dist/* "${pkgdir}"/usr/

	install -D -m755 "${srcdir}/boost-build" "${pkgdir}/etc/rc.d/boost-build"

	install -d "${pkgdir}/usr/share"
	cd "${_boostdir}/tools/build/"
	cp -R "v2" "${pkgdir}/usr/share/boost-build"

	_site_cfg="${pkgdir}/etc/site-config.jam"
	_user_cfg="${pkgdir}/usr/share/boost-build/user-config.jam"
	python3 "${srcdir}/boost-build" setup -s ${_site_cfg} -u ${_user_cfg} 

	# remove engine
	rm -rf "${pkgdir}/usr/share/boost-build/engine"

	# clean svn directory
	#find ${pkgdir} -type d -name ".svn" | xargs rm -rf

	# ======================================================================== #
	# =======================    Boost Documetation    ======================= #
	# ======================================================================== #

	#
	# pkgdesc="Boost Documetation"
	#
	# XXX: This is huge. But nowadays harddisk is cheap. 
	# And it is not easy to get a boost reference on svn version.
	# Why do you care 200MB? 
	#

	cd ${_boostdir}
	rm -rf bin.v2
	python3 "${srcdir}/cleaner"

	cd ${srcdir}
	mkdir -p "${pkgdir}/usr/share/doc"
	mv ${_boostdir} "${pkgdir}/usr/share/doc/boost"

	# ======================================================================== #
	# clean svn directory
	# ======================================================================== #

	find ${pkgdir} -type d -name ".svn" | xargs rm -rf
}

md5sums=('cc27f7c15497ccf21ba0b1727d8e86bf'
         '2e8cb03720f607a81dcbf36da4b1f1cb'
         'f7e92b0e0815e5a3a2d319b95636bedc')
