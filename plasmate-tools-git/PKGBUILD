# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=plasmate-tools-git
pkgver=20130218
pkgrel=1
pkgdesc='Plasma tools that are installed with Plasmate and were in kde-workspace 4.9'
arch=('i686' 'x86_64')
url='http://www.kde.org/'
license=('LGPL')
depends=('kdepimlibs')
makedepends=('cmake' 'git' 'automoc4' 'boost')
conflicts=('plasmate-git' 'plasmate' 'kdebase-workspace<=4.9.80')

_gitroot="git://anongit.kde.org/plasmate"
_gitname="plasmate"

build() {

  msg "Connecting to the GIT server...."
  
  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  
  msg "GIT checkout done"
  msg "Starting make..."
  cd "${srcdir}"
  mkdir -p build
  cd build
  cmake ../$_gitname \
    -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix) \
    -DCMAKE_BUILD_TYPE=Release \
    -DQT_QMAKE_EXECUTABLE=qmake-qt4

  cd engineexplorer
  make
  cd ../

  cd plasmoidviewer
  make
  cd ../
}

package() {
  cd build/engineexplorer
  make DESTDIR="${pkgdir}" install
  cd ../..

  cd build/plasmoidviewer
  make DESTDIR="${pkgdir}" install
}
