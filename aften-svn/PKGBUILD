# Maintainer:  dryes <joswiseman@gmail>

pkgname=aften-svn
pkgver=853
pkgrel=1
pkgdesc="Audio encoder which generates compressed audio streams based on ATSC A/52 specification."
arch=('i686' 'x86_64')
url=http://aften.sourceforge.net/
license=('GPL')
provides=('aften')
conflicts=('aften')
makedepends=('cmake' 'subversion')


build()
{
	[ -d ${pkgname%-*}  ] && cd ${pkgname%-*}  && svn up -r $pkgver || svn co https://aften.svn.sourceforge.net/svnroot/aften
	
	mkdir -p $srcdir/aften/default && cd $srcdir/aften/default
	cmake .. -DCMAKE_INSTALL_PREFIX:STRING=/usr -DSHARED=true
	make && make install DESTDIR=$pkgdir
}
