# Contributor: Mikhail Lukyanchenko <uptimebox@gmail.com>

pkgname=fab
pkgver=0.0.8
pkgrel=1
pkgdesc="Simple pythonic remote deployment tool"
arch=('i686 x86_64')
url="http://www.nongnu.org/fab/"
license=('GPL')
depends=('setuptools' 'python-paramiko')
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('f8e922684e574bcd3926a7c0f0333b4d')

build() {
    cd $startdir/src/$pkgname-$pkgver
    python setup.py build || return 1
    python setup.py install --root=$startdir/pkg
    install -m644 -D LICENSE $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
}

