# CPAN Name  : Module-Install
# Contributor: AUR Perl <aurperl@juster.info>
# Generator  : CPANPLUS::Dist::Arch 1.12
pkgname='perl-module-install'
pkgver='1.01'
pkgrel='1'
pkgdesc="Standalone, extensible Perl module installer"
arch=(''any'')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-file-remove>=1.42' 'perl-json>=2.14' 'perl-libwww' 'perl-module-scandeps>=0.89' 'perl-par-dist>=0.29' 'perl-yaml-tiny>=1.33')
url='http://search.cpan.org/dist/Module-Install'
source=('http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Module-Install-1.01.tar.gz')
md5sums=('cfce2464f29d4fe7ab53939a94434064')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Module-Install-1.01"
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL INSTALLDIRS=vendor DESTDIR="$pkgdir" &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
