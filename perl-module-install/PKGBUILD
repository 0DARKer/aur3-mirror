# CPAN Name  : Module-Install
# Contributor: Justin Davis <jrcd83@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 1.06
pkgname='perl-module-install'
pkgver='1.00'
pkgrel='1'
pkgdesc="Standalone, extensible Perl module installer"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-file-remove>=1.42' 'perl-json>=2.14' 'perl-libwww>=5.812' 'perl-module-scandeps>=0.89' 'perl-par-dist>=0.29' 'perl-yaml-tiny>=1.33')
url='http://search.cpan.org/dist/Module-Install'
source=('http://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Module-Install-1.00.tar.gz')
md5sums=('09067a39ba0330257f216effcf7f827c')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Module-Install-1.00"
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL INSTALLDIRS=vendor DESTDIR="$pkgdir" &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
