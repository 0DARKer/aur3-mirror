depends=('perl-file-remove>=1.42' 'perl-json>=2.14' 'perl-module-scandeps>=1.09' 'perl-par-dist>=0.29' 'perl-parse-cpan-meta>=1.4413' 'perl-yaml-tiny>=1.38' 'perl>=5.005')
makedepends=('perl-yaml-tiny>=1.33')
