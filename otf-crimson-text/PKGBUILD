pkgname=otf-crimson-text
pkgver=20110803
pkgrel=1
pkgdesc="A font family for book production in the tradition of beautiful oldstyle typefaces."
arch=('any')
url="http://aldusleaf.org/"
license=('OFL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=crimson-text.install
source=("http://downloads.sourceforge.net/crimsontext/crimson_$pkgver.tar.gz")
md5sums=('97a9c571e60c05b93451996bd4b342a6')

package() {
  cd "$srcdir"

  install -d "$pkgdir/usr/share/fonts/OTF"
  install -m644 *.otf "$pkgdir/usr/share/fonts/OTF/"
}
