# Mantainer: M0Rf30
pkgname=drbl-experimental
_name=drbl
pkgver=2.3.16
pkgrel=1
pkgdesc="DRBL (Diskless Remote Boot in Linux) is a free software, open source solution to managing the deployment of the GNU/Linux operating system across many clients."
arch=('i686' 'x86_64')
url="http://drbl.sourceforge.net/"
license=('GPL')
depends=('bash' 'bc' 'vim')
provides=('drbl')
source=(http://free.nchc.org.tw/drbl-core/src/unstable/$_name-$pkgver.tar.bz2)

build() {
  cd $srcdir/$_name-$pkgver
  make  
}

package() {
  cd $srcdir/$_name-$pkgver
  make DESTDIR=$pkgdir install
}

md5sums=('004c82b106b0986c745f9f4d5f4af239')
