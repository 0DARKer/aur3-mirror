# Maintainer: Alexander Ovsyannikov <ovsinc@ya.ru>
# Contributor: Alexander Ovsyannikov <ovsinc@ya.ru>

pkgname=openarch_libreoffice_splash
pkgver=0.2
pkgrel=1
pkgdesc="LibreOffice splash for openarch"
arch=('any')
url="http://gnome-look.org/content/show.php/?content=134629"
license=('GPL')
groups=('openarch_gray')
depends=('libreoffice')
makedepends=('imagemagick')
install=(libreoffice_splash.install)
source=('http://gnome-look.org/CONTENT/content-files/134629-Libre%20Office%20-%20Splash%20Screen.tar.bz2')

md5sums=('44016a60c036d86ff299c27210495dfe')

build() {

	cd "${srcdir}/Libre Office - Splash Screen/Splash Screen/"
	for i in *.bmp; do convert ${i} ${i%%.bmp}.png; done

	install -d -m755 "${pkgdir}"/usr/share/doc/openarch_libreoffice_splash/
	install -d -m755 "${pkgdir}/usr/lib/ooo-3.3/program/"
	install -D -m644 "${srcdir}/Libre Office - Splash Screen/AUTHORS" "${pkgdir}"/usr/share/doc/openarch_libreoffice_splash/AUTHORS
	install -D -m644 "${srcdir}/Libre Office - Splash Screen/COPYING" "${pkgdir}"/usr/share/doc/openarch_libreoffice_splash/COPYING
	install -D -m644 "${srcdir}/Libre Office - Splash Screen/Splash Screen/about.png" "${pkgdir}/usr/lib/ooo-3.3/program/about.png_new"
	install -D -m644 "${srcdir}/Libre Office - Splash Screen/Splash Screen/intro.png" "${pkgdir}/usr/lib/ooo-3.3/program/intro.png_new"
}


