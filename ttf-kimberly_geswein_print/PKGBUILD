# Maintainer: Alexander Ovsyannikov <ovsinc@ya.ru>

pkgname=ttf-kimberly_geswein_print
pkgver=1.0
pkgrel=1
pkgdesc="Some fonts by Kimberly Geswein"
arch=('any')
url="http://www.kimberlygeswein.com/"
license=("custom: Free for personal use")
depends=('fontconfig')
install=ttf.install

source=('http://img.dafont.com/dl/?f=contrary_mary'
	'http://img.dafont.com/dl/?f=nothing_you_could_say'
	'http://img.dafont.com/dl/?f=nothing_you_could_do'	
	'http://img.dafont.com/dl/?f=swanky_and_moo_moo'
	'http://img.dafont.com/dl/?f=indie_flower'
	'http://img.dafont.com/dl/?f=ten_million_fireflies'
	'http://img.dafont.com/dl/?f=sekona'
	'http://img.dafont.com/dl/?f=gloria_hallelujah')

build() {
	cd "${srcdir}/"
	install -m755 -d "${pkgdir}/usr/share/fonts/TTF"
	install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
	install -m644 ./*.ttf "${pkgdir}/usr/share/fonts/TTF/"
	install -m644 ./*.txt "${pkgdir}/usr/share/licenses/${pkgname}/"
}

md5sums=('4e4a92d921c52676642cafdbae506b62'
         '45e5da90bbd2952af3767f20de29f61e'
         'c1be3bc54a85c5f6b037aecb188fff5f'
         '3c12e11cc5ef65ac49f4f084b05b97cc'
         'd82c24edeeeab8133ff32ad6f1b926d0'
         '6bee97ea7d57446d9c890bdad29c12a7'
         'fca7dfe69f67c5f5daec063ccada2e1c'
         '9514286fd8563fc83db29e0c39a51018')
