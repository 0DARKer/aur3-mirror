# Maintainer: Mr Hutts <hutts at internode dot on dot net>

pkgname=z-push
pkgver=2.0.7
pkgrel=1690
pkgdesc="Open Source Groupware Solution"
arch=('i686' 'x86_64')
url="http://www.zarafa.com/"
license=('AGPL3')
depends=('zarafa-server>=0.7')
source=("http://zarafa-deutschland.de/z-push-download/final/2.0/${pkgname}-${pkgver}-${pkgrel}.tar.gz" "z-push.conf" "htaccess")
md5sums=('b0dd7f6da6b6d6bac49266cca28a4140' '71ba968fd91662febd15bfd3a93283b3'
	'1091aa1ba272ef05bf628f73b05c527a')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-${pkgrel}
  mkdir -p ${pkgdir}/srv/http/z-push
  install -d ${pkgdir}/srv/http/z-push/
  mkdir -p ${pkgdir}/var/log/z-push
  install -d -o http ${pkgdir}/var/log/z-push/
  mkdir -p ${pkgdir}/var/lib/z-push
  install -d -o http ${pkgdir}/var/lib/z-push/
  cp -r ${srcdir}/${pkgname}-${pkgver}-${pkgrel}/* ${pkgdir}/srv/http/z-push/
  install ${srcdir}/htaccess ${pkgdir}/srv/http/z-push/.htaccess

  mkdir -p ${pkgdir}/etc/httpd/conf/extra/
  install ${srcdir}/z-push.conf ${pkgdir}/etc/httpd/conf/extra/z-push.conf
}
