# Maintainer: Austin <doorknob60 at gmail dot com>
pkgname=pygtk-shutdown-svn
pkgver=2
pkgrel=1
pkgdesc="A fork of ummaintained shutdown-dialog. A simple dialog to allow shutting down from any WM, without dependencies on DEs or DMs. Optional patches for pm-utils and HAL inside, just uncomment"
arch=('i686' 'x86_64')
url="http://code.google.com/p/pygtk-shutdown/"
license=('GPL')
depends=('python2' 'pygtk' 'gksu')
optdepends=('pm-utils: suspend and hibernate support'\
		'hal: using hal rather than /sbin/shutdown and gksu')
makedepends=('subversion')
install=
source=()

_svntrunk=http://pygtk-shutdown.googlecode.com/svn/trunk/
_svnmod=pygtk-shutdown

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  # Uncomment the following line to add support for Suspend and Hibernate via pm-utils
  # patch pygtk-shutdown pygtk-shutdown-pm.patch
  
  # Uncomment the following line if you want to use HAL for shutting down rather than gksu and /sbin/shutdown
  # patch pygtk-shutdown pygtk-shutdown-hal.patch
}

package() {
install -d $pkgdir/usr/bin
install -Dm755 $_svnmod-build/pygtk-shutdown $pkgdir/usr/bin/
}
