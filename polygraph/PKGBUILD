# Maintainer: Dane Elwell <dane[dot]elwell<at>gmail[dot]com>
pkgname=polygraph
pkgver=4.0.11
pkgrel=3
pkgdesc="Tool for testing caching proxies, accelerators, content filters, etc."
arch=(i686 x86_64)
url="http://www.web-polygraph.org"
license=(GPL)
depends=(gnuplot openssl zlib ncurses)
source=(http://www.web-polygraph.org/downloads/srcs/$pkgname-$pkgver-src.tgz openssl1.0_build_fix.patch)
md5sums=('ebe31c754d373a64af0b65e8f160c075'
         '570e1e95ef4f39ddebf5d3a16e0dbe5b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np1 -i ../openssl1.0_build_fix.patch || return 1
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
