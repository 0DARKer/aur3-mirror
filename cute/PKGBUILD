# Maintainer: Danilo Bargen <gezuru *at* gmail *dot* com>

pkgname=cute
pkgver=1.6.1
_pkgver=1_6_1
pkgrel=1
pkgdesc="An easy to use C++ unit testing framework"
arch=("i686" "x86_64")
url="http://www.cute-test.com/"
license=("GPL")
depends=("boost-libs")
source=("http://www.cute-test.com/attachments/download/3/${pkgname}${_pkgver}.tar.gz")
md5sums=("802aeda53ae01770483101e06c2bd498")

package() {
  mkdir -p ${pkgdir}/usr/include/cute
  cd ${srcdir}/cute_lib/
  cp *.h ${pkgdir}/usr/include/cute/
}

