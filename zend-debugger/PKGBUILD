pkgname=zend-debugger
pkgver=6.0.0
_pkgrel=2014_07_16
pkgrel=1
pkgdesc="Zend Debugger extention for PHP"
arch=('i686' 'x86_64')
url="http://www.zend.com/en/products/studio"
license=('custom')
depends=('php>=5.5')
conflicts=('zend-debugger')
provides=('zend-debugger')
install=${pkgname}.install
_repo=http://downloads.zend.com/studio_debugger
_arch=i386
[ "$CARCH" == "x86_64" ] && {
	_arch=x86_64
}
source=(
	${_repo}/${_pkgrel}/ZendDebugger-linux-${_arch}.tar.gz
	zend_debugger.ini
	${pkgname}.install
)
md5sums=(
	c3cf3702f6005831301eeb2989c5e927
	ed5430a12114428be83fa3fb08e740b1
	68b3c506355e9f6f975c6a37dd3437f5
)
[ "$CARCH" == "x86_64" ] && {
	md5sums[0]=76f64ae3db8a2fdd08c2c29f90dccedc
}

package() {
	cd "$srcdir"
	install -D -m 744 ZendDebugger-linux-${_arch}/php-5.5.x/ZendDebugger.so "$pkgdir/usr/lib/php/modules/zend_debugger.so"
	install -D -m 644 ../zend_debugger.ini "$pkgdir/etc/php/conf.d/zend_debugger.ini"
}
