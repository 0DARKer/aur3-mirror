# Maintainer: Valere Monseur <valere_monseur@hotmail.com>

pkgname=mygtkmenu
pkgver=1.2.1c
pkgrel=5
pkgdesc="A user defined GTK menu for running applications"
arch=('i686' 'x86_64')
url="http://sites.google.com/site/jvinla/mygtkmenu"
license=('GPL')
depends=('gtk2>=2.4')
source=(http://jvinla.googlepages.com/myGtkMenu-1.2.1c.tar.gz)
md5sums=('cee2d073552fa5e9691998ddc4547dfa')
backup=('etc/mygtkmenu.conf')

build() {
  cd "$srcdir"

  # cleanup
  rm myGtkMenu
  rm myGtkMenu-32
  rm myGtkMenu-64

  # install config file
  install -D -m644 TestMenu.txt $pkgdir/etc/mygtkmenu.conf

  # install executable
  make || return 1
  install -D -m755 myGtkMenu $pkgdir/usr/bin/mygtkmenu

  # install license
  install -D -m644 License.txt "$pkgdir/usr/share/licenses/mygtkmenu/License.txt" || return 1
}
