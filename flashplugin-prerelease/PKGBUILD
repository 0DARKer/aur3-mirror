pkgname=flashplugin-prerelease
_licensefile='PlatformClients_PC_WWEULA_Combined_20100108_1657.pdf'
pkgver=10.3.162.29
pkgrel=4
#[ "${CARCH}" = "x86_64" ] && pkgver=10.3.162.29
#[ "${CARCH}" = "x86_64" ] && pkgrel=1 

pkgdesc='Adobe Flash Player Square'
#[ "${CARCH}" = "i686" ] && pkgdesc='Adobe Flash Player 10.2 Beta'
url='http://labs.adobe.com/technologies/flashplayer10/'
#arch=('i686' 'x86_64')
arch=('x86_64')

source=('http://download.macromedia.com/pub/labs/flashplayer10/flashplayer10_2_p3_64bit_linux_111710.tar.gz'
        "http://www.adobe.com/products/eulas/pdfs/${_licensefile}"
	mms.cfg)
md5sums=('49b55c7eb8044453e5f6f2e4b3cb4084'
         '94ca2aecb409abfe36494d1a7ec7591d'
         'df30781e4c9b789e2d7f6cdbd9f47d6b')
#[ "${CARCH}" = "x86_64" ] && source[0]="http://download.macromedia.com/pub/labs/flashplayer10/flashplayer10_2_p3_64bit_linux_111710.tar.gz"
#[ "${CARCH}" = "x86_64" ] && md5sums[0]='49b55c7eb8044453e5f6f2e4b3cb4084'

depends=('mozilla-common' 'libxt' 'gtk2' 'nss' 'curl')
optdepends=('libvdpau: GPU acceleration on Nvidia card')
conflicts=('flashplugin')
provides=('flashplayer' 'flashplugin')
license=('custom')
options=(!strip)
backup=(etc/adobe/mms.cfg)
#install='flashplugin-prerelease.install'

package() {
  install -D -m755 libflashplayer.so ${pkgdir}/usr/lib/mozilla/plugins/libflashplayer.so
  install -D -m644 ${_licensefile} ${pkgdir}/usr/share/licenses/${pkgname}/${_licensefile}
  install -D -m644 mms.cfg ${pkgdir}/etc/adobe/mms.cfg
}

