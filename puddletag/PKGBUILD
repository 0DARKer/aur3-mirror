# Maintainer:   Lucky <aur.archlinux.org [at] lucky.take0ver [dot] net>
# Contributor:  Farhad Shahbazi <farhad@enthusiasm.cc>

pkgname=puddletag
pkgver=0.10.6.3
pkgrel=1
pkgdesc="audio tag editor"
url="http://puddletag.sourceforge.net/"
license=("GPL")
arch=("i686" "x86_64")
depends=("python-configobj" "python2>=2.5" "python2-pyqt>=4.5" "python2-pyparsing>=1.5.1" "mutagen>=1.14")
optdepends=("python-musicbrainz2: required for MusicBrainz support"
            "quodlibet: edit a QuodLibet library")
source=("http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=("a056760c0b04deb552663dc39c865799")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 setup.py config
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 setup.py install --root="${pkgdir}" --optimize=1
}
