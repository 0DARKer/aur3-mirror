# Maintainer: Farhad Shahbazi <farhad@enthusiasm.cc>

pkgname=puddletag
pkgver=0.9.11
pkgrel=3
pkgdesc="audio tag editor"
arch=('i686' 'x86_64')
url="http://puddletag.sourceforge.net/"
license=('GPL')
depends=('python2>=2.5' 'python2-qt>=4.5' 'python2-pyparsing>=1.4' 'mutagen' 'python-configobj' 'python-musicbrainz2')
optdepends=('python-imaging: edit/view FLAC cover art'
            'quodlibet: edit a QuodLibet library')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz" )
md5sums=('5c34ce2e2475b66cfc1aba9d44439424')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py config
  python2 setup.py install --root=$pkgdir
}
