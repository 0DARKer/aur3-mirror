# Maintainer: Farhad Shahbazi <farhad@enthusiasm.cc>

pkgname=puddletag
pkgver=0.10.0
pkgrel=1
pkgdesc="audio tag editor"
arch=('i686' 'x86_64')
url="http://puddletag.sourceforge.net/"
license=('GPL')
depends=('python2>=2.5' 'python2-qt>=4.5' 'python2-pyparsing>=1.5.1' 'mutagen>=1.14' 'python-configobj')
optdepends=('python-musicbrainz2: required for MusicBrainz support'
            'quodlibet: edit a QuodLibet library')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz" )
md5sums=('1a7e7b81751f87b432811262c2bffca2')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py config
  python2 setup.py install --root=$pkgdir
}
