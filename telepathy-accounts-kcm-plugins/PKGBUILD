pkgname=telepathy-accounts-kcm-plugins
pkgver=1082828
pkgrel=1
pkgdesc="KCM for Telepathy"
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org/"
license=('GPL')
depends=('qt' 'telepathy-qt4' 'telepathy-accounts-kcm')
makedepends=('subversion' 'cmake')
provides=('telepathy-accounts-kcm-plugins')
source=()
md5sums=()
#groups=(kde4-svn)

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/playground/network/telepathy-accounts-kcm-plugins/
_svnmod=telepathy-accounts-kcm-plugins

build() {
 

  # start building
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/src/$_svnmod -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=debugfull

  make VERBOSE=1 || return 1
  make DESTDIR=$startdir/pkg install || return 1

  rm -rf $startdir/src/$_svnmod-build
}
