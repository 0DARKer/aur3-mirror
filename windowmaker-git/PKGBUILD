# Contributor: David Couzelis <drcouzelis@gmail.com>
pkgname=windowmaker-git
pkgver=20111025
pkgrel=1
pkgdesc="An X11 window manager with a NEXTSTEP look and feel, development version"
arch=('i686' 'x86_64')
url="http://www.windowmaker.org/"
license=('GPL' 'custom')
depends=('gettext' 'giflib' 'libjpeg' 'libpng' 'libtiff' 'libxft' 'libxinerama' 'libxpm' 'libxrandr')
makedepends=('git')
provides=('windowmaker')
conflicts=('windowmaker' 'windowmaker-crm-git')

_gitroot="git://repo.or.cz/wmaker-crm.git"
_gitname="wmaker-crm"

build() {

  msg "Connection to GIT server..."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  cd "$srcdir/$_gitname"

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc \
    --with-gnustepdir=/usr/lib/GNUstep --with-nlsdir=/usr/share/locale \
    --enable-xinerama --enable-xrandr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

