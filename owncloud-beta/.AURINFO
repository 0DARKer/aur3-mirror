pkgbase = owncloud-beta
	pkgdesc = A cloud server to store your files centrally on a hardware controlled by you
	pkgver = 7.0.0alpha1
	pkgrel = 1
	url = http://owncloud.org/
	arch = any
	license = GPL
	depends = php-gd
	depends = php-intl
	optdepends = php-apache: to use the Apache web server
	optdepends = php-sqlite: to use the SQLite database backend
	optdepends = php-pgsql: to use the PostgreSQL database backend
	optdepends = mariadb: to use the MySQL database backend
	optdepends = smbclient: to mount SAMBA shares
	optdepends = php-mcrypt
	optdepends = php-imagick: file preview
	optdepends = ffmpeg: file preview
	optdepends = libreoffice-common: file preview
	source = http://download.owncloud.org/community/testing/owncloud-7.0.0alpha1.tar.bz2
	source = http://download.owncloud.org/community/testing/owncloud-7.0.0alpha1.tar.bz2.asc
	source = apache.example.conf
	options = !strip
	backup = etc/webapps/owncloud/apache.example.conf

pkgname = owncloud-beta

