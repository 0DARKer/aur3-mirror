# Maintainer: kevku <kevku@gmx.com>
pkgname=esteidfirefoxplugin
pkgver=3.7.0.894
pkgrel=1
pkgdesc="Firefox ID card signing plugin. (Official version by AS Sertifitseerimiskeskus)"
arch=('x86_64' 'i686')
url="http://www.id.ee/"
license=('LGPL')
depends=('gtk2' 'esteidpkcs11loader')
makedepends=('cmake')
conflicts=('esteid-browser-plugin-svn' 'sk-esteidfirefoxplugin-svn')
source=("http://ftp.id.eesti.ee/pub/id/signed_repository/sources/$pkgname-$pkgver.tar.gz"
	"http://ftp.id.eesti.ee/pub/id/signed_repository/sources/$pkgname-$pkgver.tar.gz.asc")
sha256sums=('6b5531063b92d53dd06152233cfdf4aa9ccbada9aa4089d0309e5e74825795e1'
            'a10ffad3df5559c5fd71ab7e876824d813f2209b28c56c06c108dcf2b5562312')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make plugin
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -D npesteid-firefox-plugin.so $pkgdir/usr/lib/mozilla/plugins/npesteid-firefox-plugin.so
}

