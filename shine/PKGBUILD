# Maintainer: Matthias Grosser <mtgrosser at gmx dot net>

pkgname=shine
pkgver=0.1.0
pkgrel=1
pkgdesc='Revived fixed-point MP3 encoder'
arch=('arm' 'i686' 'x86_64')
url='https://github.com/savonet/shine'
source='https://github.com/savonet/shine/tarball/43c74e750bbd4f977fd7bc1349d210ce6db11016'
license=(GPL2)
makedepends=('git' 'automake' 'autoconf' 'make' 'libtool')
md5sums=('a1beb770810f49957ee27e5286c2f468')

_gitname='savonet-shine-43c74e7'

build() {
	cd "${srcdir}/${_gitname}"
        mkdir m4
	autoreconf -i
	./configure --prefix=/usr || return 1
        make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
