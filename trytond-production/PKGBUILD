# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-production
_pkgname=trytond_production
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The production module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-company>=3.2' 'trytond-product>=3.2' 'trytond-stock>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("83348c59248fe7035c2eb238c6bdc960")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}