pkgname=cliweather
pkgver=2011.03.06
_githash=c6c1857
pkgrel=1
pkgdesc="CLI for Google's weather API"
url="http://closure.ath.cx/cliweather"
arch=('any')
license=('WTFPL')
depends=('python')
source=("http://pub.lambda.ath.cx/patrick/static/$pkgname/downloads/$pkgname-$pkgver.tgz")

package() {
    cd $srcdir/$pkgname-$_githash
    install -vDm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}

