pkgname=subtitlecomposer-git
pkgver=20121130
pkgrel=1
pkgdesc="A KDE subtitle editor"
arch=('i686' 'x86_64')
url="https://github.com/maxrd2/subtitlecomposer"
license=('GPL')
depends=('kdelibs' 'gettext')
makedepends=('cmake' 'automoc4' 'git')
optdepends=("mplayer: for MPlayer backend")

build()
{
  git clone https://github.com/maxrd2/subtitlecomposer.git
  cd ${srcdir}/subtitlecomposer

  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
}
package(){
  cd ${srcdir}/subtitlecomposer/build
  make DESTDIR=${pkgdir} install || return 1
}
