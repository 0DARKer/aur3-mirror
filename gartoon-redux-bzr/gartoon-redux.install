post_install() {
  echo -n "Update mime types database... "
  update-mime-database /usr/share/mime

  echo '>>> For gThumb and GVim support'
  echo '>>> add to .gtkrc-2.0 this line:'
  echo '>>> include "/usr/share/icons/GartoonRedux/gtkrc"'
}


post_upgrade() {
  post_install
}


post_remove() {
  echo -n "Update mime types database... "
  update-mime-database /usr/share/mime
}
