# Maintainer: tjholowaychuk <tj@vision-media.ca>
_npmname=mocha
pkgname=nodejs-mocha # All lowercase
pkgver=1.8.1
pkgrel=1
pkgdesc="simple, flexible, fun test framework"
arch=(any)
url="http://github.com/visionmedia/mocha"
license=()
depends=('nodejs' )
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(d11828d8f79292183e8e0fb1f33ebcd8b2870567)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
