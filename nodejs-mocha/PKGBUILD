# Maintainer: travisjeffery <tj@travisjeffery.com>
_npmname=mocha
_npmver=1.18.2
pkgname=nodejs-mocha # All lowercase
pkgver=1.18.2
pkgrel=1
pkgdesc="simple, flexible, fun test framework"
arch=(any)
url="http://github.com/visionmedia/mocha"
license=()
depends=('nodejs' )
optdepends=()
options=( '!strip' )
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
noextract=($_npmname-$_npmver.tgz)
sha1sums=(800848f8f7884c61eefcfa2a27304ba9e5446d0b)

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install -g --user root --prefix "$pkgdir/usr" $_npmname@$_npmver
}

