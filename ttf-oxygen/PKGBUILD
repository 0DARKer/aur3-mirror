# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=ttf-oxygen
pkgver=0.4
pkgrel=2
pkgdesc='A desktop/gui font family for integrated use with the KDE desktop.'
arch=('any')
install=$pkgname.install
source=("$pkgname.tar.gz::http://quickgit.kde.org/?p=oxygen-fonts.git&a=snapshot&h=064d3dc5fd307ce3349391f708b767f71128a1c7&fmt=tgz")
license=('Open Font License 1.1')
url="https://projects.kde.org/projects/playground/artwork/oxygen-fonts"
makedepends=('extra-cmake-modules')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
provides=('ttf-font')
md5sums=('aa2b152a8bfba672e01bec5e49385b09')

build() {
  cd oxygen-fonts
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DLIB_INSTALL_DIR=lib
  make
}


package() {
  cd oxygen-fonts/build
  make DESTDIR=${pkgdir} install  
}
