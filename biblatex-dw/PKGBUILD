# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=biblatex-dw  
pkgver=1.3b
pkgrel=1
pkgdesc="A small collection of styles for the \
 biblatex package, designed for citations in the \ 
 Humanities"
url="http://tug.ctan.org/tex-archive/macros/latex/exptl/biblatex-contrib/biblatex-dw"
arch=('any')
license=('LPPL')
depends=('biblatex>=0.9')
install=biblatex-dw.install
source=($pkgname-$pkgver.zip::http://dante.ctan.org/get/macros/latex/exptl/biblatex-contrib/biblatex-dw.zip)
md5sums=('f4c1bde86646de7b68048ad8e873b9dd')

build() {
  install -d $pkgdir/usr/share/texmf/doc/$pkgname
  install -d $pkgdir/usr/share/texmf/tex/latex/$pkgname
  cp -R $srcdir/$pkgname/latex/* $pkgdir/usr/share/texmf/tex/latex/$pkgname
  cp -R $srcdir/$pkgname/doc/* $pkgdir/usr/share/texmf/doc/$pkgname
}
