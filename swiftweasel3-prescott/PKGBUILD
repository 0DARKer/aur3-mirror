# Contributor: Dennis Kopin <dennis.kopin@gmail.com>
# Based on Yo'av's Moshe <yoavmoshe@gmail.com> PKGBUILD for x86_64 version
pkgname=swiftweasel3-prescott
_pkgname=swiftweasel
_swiftver=_06-05-08_prescott
pkgver=3.0RC2
pkgrel=1
pkgdesc="Swiftweasel is an optimized build of the Mozilla Firefox web browser for Linux."
arch=('i686')
url="http://swiftweasel.sourceforge.net/"
license=('MPL')
depends=(mozilla-common desktop-file-utils)
provides=(swiftweasel)
source=(http://downloads.sourceforge.net/swiftweasel/$_pkgname-$pkgver$_swiftver.tar.gz \
swiftweasel.desktop)
md5sums=(7af2125cd704aed9c150006288b01e02 \
7cae5f7cdce49ec732064e5a8ca488e4)
	 
build() {
  cd $startdir/src/
  mkdir $startdir/pkg/opt/
  cp -r $_pkgname $startdir/pkg/opt/$_pkgname
  mkdir -p $startdir/pkg/usr/bin
  ln -s /opt/$_pkgname/$_pkgname $startdir/pkg/usr/bin/$_pkgname

  mkdir -p $startdir/pkg/usr/share/applications
  mkdir -p $startdir/pkg/usr/share/pixmaps
  install -m644 $startdir/src/swiftweasel.desktop $startdir/pkg/usr/share/applications/
  install -m644 $startdir/src/swiftweasel/icons/mozicon128.png $startdir/pkg/usr/share/pixmaps/swiftweasel.png
}
