pkgname='perl-dist-zilla-plugin-catalyst'
pkgver='0.06'
pkgrel='1'
pkgdesc="set of plugins for working with Catalyst"
arch=('any')
url='http://search.cpan.org/dist/Dist-Zilla-Plugin-Catalyst'
license=('PerlArtistic' 'GPL')
depends=('perl>=5.004' 'perl-catalyst-devel' 'perl-dist-zilla' 'perl-moose')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/X/XE/XENO/Dist-Zilla-Plugin-Catalyst-0.06.tar.gz')
md5sums=('e2c7f8f737eeda9658b79cc3b09745c7')

build() {
  DIST_DIR="${srcdir}/Dist-Zilla-Plugin-Catalyst-0.06"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

