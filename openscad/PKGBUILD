# Maintainer: Pierre DOUCET <pierre at equinoxefr.org>
pkgname=openscad
pkgver=2011.06
pkgrel=2
pkgdesc="OpenSCAD is a software for creating solid 3D CAD objects."
arch=('i686' 'x86_64')
license=('GPLv2')
url="http://openscad.org/"
source=(https://github.com/downloads/openscad/openscad/${pkgname}-${pkgver}.src.tar.gz)
md5sums=(b840243cf1a2f75d0110f96c9266595c)
depends=('qt' 'cgal' 'eigen' 'opencsg' 'bison' 'flex' 'gcc')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  qmake || return 1
  make || return 1
  install -D openscad $pkgdir/usr/bin/openscad
}
