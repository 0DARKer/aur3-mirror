pkgname=openscad
pkgver=2010.02
pkgrel=1
pkgdesc="OpenSCAD is a software for creating solid 3D CAD objects."
arch=('i686' 'x86_64')
license=('GPLv2')
url="http://openscad.org/"
source=(http://openscad.org/download/${pkgname}-${pkgver}.src.tar.gz)
md5sums=(1710e03c8090bd43e652884a18f3cec2)
depends=('qt' 'cgal' 'eigen' 'opencsg' 'bison' 'flex' 'gcc')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  qmake || return 1
  make || return 1
  install -D openscad $pkgdir/usr/bin/openscad
}
