# Contributor: Luis Pablo Gasparotto <lpgasparotto(at)gmail(dot)com>

pkgname=tkeca
_pkgname=tkeca
pkgver=4.4.2
pkgrel=0
pkgdesc="TkEca is a fully featured frontend for Kai Vehmanen's Ecasound"
url="http://tkeca.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('tcl' 'tk' 'ecasound')
optdepends=('ladspa' 'cmt' 'liblrdf' 'fftw' 'swh-plugins')
source=(http://sourceforge.net/projects/tkeca/files/tkeca/${_pkgname}-${pkgver}.tar.gz)
md5sums=('925ed4d7a8d5fc42d12d2fc14a6fdf39')
build() {
  cd $startdir/src/${_pkgname}-${pkgver}
  install -m 755 -D tkeca.tcl $startdir/pkg/usr/bin/tkeca.tcl
  install -m 755 -d $startdir/pkg/usr/share/${_pkgname}
  install -m 644 -D tkeca.html $startdir/pkg/usr/share/${_pkgname}/tkeca.html
  install -m 644 -D license.txt $startdir/pkg/usr/share/${_pkgname}/license.txt
  install -m 644 -D $startdir/tkeca.png $startdir/pkg/usr/share/pixmaps/tkeca.png
  install -m 644 -D $startdir/tkeca.desktop $startdir/pkg/usr/share/applications/tkeca.desktop
  install -m 644 -D README.tkeca $startdir/pkg/usr/share/${_pkgname}/README.tkeca
}
