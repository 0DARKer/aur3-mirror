# Maintainer: SpepS <dreamspepser at yahoo dot it>

_pkg=hotot-qt
pkgname=$_pkg-git
pkgver=20111014
pkgrel=1
pkgdesc="A lightweight & open source microblogging software (twitter identi.ca) in Qt."
arch=('i686' 'x86_64')
url="http://www.hotot.org/"
license=('LGPL3')
depends=('qt')
makedepends=('git' 'cmake' 'intltool')
provides=("$_pkg")
conflicts=("$_pkg")
replaces=("$_pkg-hg")
install="$pkgname.install"

_gitroot="https://github.com/shellex/Hotot.git"
_gitname="$_pkg"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  # remove google analytics tracking code
  sed -i '/\/\/ 6. run track code/,+4d' data/index.html

  # build qt
  [ -d build-qt ] || mkdir build-qt && cd build-qt
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd "$srcdir/$_gitname-build/build-qt"

  make DESTDIR="$pkgdir/" install
}

