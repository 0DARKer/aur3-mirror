pkgname=python-pmw
pkgver=1.3.3a
pkgrel=1
pkgdesc="A toolkit for high-level compound widgets in Python using the Tkinter module."
arch=('i686' 'x86_64')
url="http://pmw.sourceforge.net/doc/index.html"
license=('MIT')
depends=('python2' 'tk')
source=(${pkgname}-${pkgver}::http://sourceforge.net/projects/pmw/files/Pmw/Pmw.1.3.3/Pmw_1_3_3a.tar.gz/download)
md5sums=('8b8e500af141b848cee3141f36483a3b')

package() {
  cd "Pmw"
  python2 setup.py build
  python2 setup.py install --prefix=/usr --root="${pkgdir}/"
}
