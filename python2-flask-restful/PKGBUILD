# Maintainer: Luka Perkov <luka.perkov@sartura.hr>

pkgname=python2-flask-restful
pkgver=0.2.11
pkgrel=1
pkgdesc='A Flask extension for creating REST APIs'
url='https://pypi.python.org/pypi/Flask-RESTful'
arch=('any')
license=('custom')
makedepends=('python2-distribute')
depends=('python2-flask>=0.8')
conflicts=('python2-flask-restful-git')
source=("http://pypi.python.org/packages/source/F/Flask-RESTful/Flask-RESTful-$pkgver.tar.gz" 'LICENSE')
md5sums=('030c9cebdc275d3eab1db2146601035b' '685bb55ed99a366bb431995f5eef2783')

build() {
	cd "$srcdir/Flask-RESTful-$pkgver"

	python2 setup.py build
}

package() {
	cd "$srcdir/Flask-RESTful-$pkgver"

	python2 setup.py install --root="$pkgdir" --optimize=1
	install -D -m644 $srcdir/LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
