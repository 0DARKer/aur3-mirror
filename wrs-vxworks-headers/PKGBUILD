pkgname=wrs-vxworks-headers
pkgver=6.3
pkgrel=3
pkgdesc="The VxWorks 6.3 Headers"
arch=(any)
provides=('wrs-vxworks-headers')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL' 'custom=Wind River')
depends=()
options=('!strip' 'libtool' '!zipman')
source=(https://www.dropbox.com/s/3i204n2e4tdndwt/$pkgname-$pkgver.tar.xz
		LICENSE)
sha512sums=('9e298c344bd56bbd2e64d73a8a0337daae4ecf2a9b89583977ea977271da7c6ece4ae1b9c11a9854915be6116d358f475177e9b85707bc6d512cc202d166050c'
            '02a0d5b7ac7c812977138d29da5db95aa6bce72d2a87fbc6ea0a01f839b764b94127091f46d89069b981c5e86caa3e0a0a4813455ee7928d17e7fbcc66a7c9f2')

package() {
  cd $srcdir
  tar -xJf $pkgname-$pkgver.tar.xz

  cd "$pkgname-$pkgver"
  cp -dpr --no-preserve=ownership ./usr $pkgdir/

  install -Dm644 $srcdir/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
