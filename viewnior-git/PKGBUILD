# Mantainer: Berseker <berseker86 at gmail.com>

pkgname=viewnior-git
pkgver=0.5.108.ga045b96
pkgrel=1
pkgdesc="Simple, fast, elegant and minimalistic image viewer, written in C(GTK+) with a new GtkImageView library. Git Version"
arch=('i686' 'x86_64')
url="http://xsisqox.github.com/Viewnior/"
license=('GPL')
depends=('cairo-ubuntu' 'fontconfig-ubuntu' 'hicolor-icon-theme' 'gtk2' 'desktop-file-utils')
makedepends=('gnome-common' 'intltool')
provides=('viewnior')
install="$pkgname.install"
options=('strip')
_gitroot="git://github.com/xsisqox/Viewnior.git"
_gitname="Viewnior"

pkgver() {
  if [ -d "$srcdir"/$_gitname ]; then
    cd "$srcdir"/$_gitname
    git describe --always | sed 's|-|.|g' | sed -e 's/viewnior.//g'
  fi
}


build() {
  msg "Connecting to GIT server..."
  if [ -d "${srcdir}/${_gitname}" ] ; then
    cd ${_gitname} && git pull --rebase
  else
    git clone ${_gitroot}
  fi
  msg "GIT checkout done or server timeout"

  msg "Starting make..."

  rm -rf ${srcdir}/build
  cd ${srcdir}/${_gitname}
  sed -i 's/AM_PROG_CC_STDC/AC_PROG_CC/g' configure.ac
  ./autogen.sh

  ./configure --prefix=/usr LDFLAGS='-lm'
  make
  make DESTDIR=$pkgdir install
}
