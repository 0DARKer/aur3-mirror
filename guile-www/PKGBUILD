# Contributor: tantalum <tantalum at online dot de>
pkgname=guile-www
pkgver=2.28
pkgrel=1
pkgdesc='A set of Guile Scheme modules to facilitate HTTP, URL and CGI programming'
arch=(i686 x86_64)
license=(GPL3)
depends=(guile)
url=http://www.gnuvola.org/software/guile-www
source=(${url}/${pkgname}-${pkgver}.tar.gz)
md5sums=(86b1a9d13b4b2313a9e4fdcf3ffa1401)
install=${pkgname}.install

build(){
 cd ${srcdir}/${pkgname}-${pkgver}

 ./configure --prefix=/usr || return 1
 make && make DESTDIR=${pkgdir} install || return 1

 #remove documentation
 if [ -e ${pkgdir}/usr/share/info/dir ]; then
  rm ${pkgdir}/usr/share/info/dir
 fi
}

