# Contributor: Vojtech Horky <vojta . horky at-symbol seznam . cz>
# based on wxgtk and wxgtk-ansi PKGBUILDs

pkgname=wxgtk-debug
pkgver=2.8.11
pkgrel=1
pkgdesc="GTK+ implementation of wxWidgets API for GUI - debug mode (devel)"
arch=('i686' 'x86_64')
url="http://wxwidgets.org"
license=('custom:wxWindows')
depends=('wxgtk')
makedepends=('libgnomeprintui' 'gstreamer0.10-base-plugins' 'gconf' 'ccache' 'mesa')
options=('ccache' '!strip') # ccache required to build libwx_gtk2u_mmedia
#source=("http://downloads.sourceforge.net/wxpython/wxPython-src-${pkgver}.tar.bz2")
source=(http://downloads.sourceforge.net/wxwindows/wxGTK-${pkgver}.tar.bz2)
md5sums=('6040933d200037f90f6aa1c5169e7ec6')

build() {
#  cd "${srcdir}/wxPython-src-${pkgver}"
  cd "${srcdir}/wxGTK-${pkgver}"
  
  ./configure --prefix=/usr --libdir=/usr/lib --with-gtk=2 --with-opengl --enable-unicode \
    --enable-graphics_ctx --with-gnomeprint --disable-optimize --enable-mediactrl \
    --with-libpng=sys --with-libxpm=sys --with-libjpeg=sys --with-libtiff=sys \
    --enable-debug || return 1
  make || return 1
  make -C locale allmo || return 1
  make DESTDIR="${pkgdir}" install || return 1
  cd contrib/src
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  
  msg "Removing files already in wxgtk package..."
  rm -fr "${pkgdir}/usr/share" &>/dev/null
  rm -fr "${pkgdir}/usr/include" &>/dev/null
  rm -fr "${pkgdir}/usr/bin" &>/dev/null
  install -D -m644 ../../docs/licence.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE" || return 1
}

# vim:set ts=2 sw=2 et:
