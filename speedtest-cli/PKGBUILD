pkgname=speedtest-cli
pkgver=20130218
pkgrel=3
pkgdesc='Command line interface for testing internet bandwidth using speedtest.net'
arch=('any')
url='https://github.com/sivel/speedtest-cli'
license=('Apache2')
depends=('python2')
source=('https://raw.github.com/sivel/speedtest-cli/11fb59d6aeed4ae6d781cc27282300ea1ca8afe1/speedtest-cli')
md5sums=('9abba18a6f5173445cce67e836f16e7f')

package(){
    cd "$srcdir"

    sed -re 's:#!/usr/bin/env python:#!/usr/bin/env python2:' < speedtest-cli > speedtest-cli2
    install -Dm755 speedtest-cli2 "$pkgdir"/usr/bin/speedtest-cli
}
