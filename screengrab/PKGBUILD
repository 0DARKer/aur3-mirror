# Maintainer: DOOMer <doomer3d@gmail.com>
# Contributor: DOOMer <doomer3d@gmail.com>
pkgname=screengrab
pkgver=0.9.1
pkgrel=1
pkgdesc="Crossplatform tool for grabbing screenshots of your desktop."
arch=('i686' 'x86_64')
url="http://screengrab-qt.googlecode.com/"
license=('GPL2')
depends=('qt>=4.5.0')
makedepends=('cmake>=2.6')
source=(http://screengrab-qt.googlecode.com/files/screengrab-$pkgver.tar.gz)
md5sums=('21bffd96f8c9f68fb3ad04dfa76d249f')

build() {

cd $srcdir/screengrab-$pkgver
cmake .
make || return 1
make install DESTDIR="${pkgdir}" || return 1
} 
