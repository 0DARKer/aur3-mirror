# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-traitsgui
pkgver=3.6.0
_githubtag=a78123e
pkgrel=2
pkgdesc="Traits-capable windowing framework"
arch=('i686' 'x86_64')
url="https://github.com/enthought/traitsgui"
license=('BSD')
depends=('python2' 'python2-enthoughtbase' 'python2-traits' 'python2-traitsbackend')
makedepends=('python2-distribute')
optdepends=('python2-traitsbackendqt' 'python2-traitsbackendwx')
conflicts=('python-enthought-traits' 'python2-traitsgui-git' 'python-ets-traitsgui-svn')
options=(!emptydirs)

source=("https://github.com/enthought/traitsgui/tarball/${pkgver}")
md5sums=('c10517b53cf1bb3a360a72b5e21234b3')

build() {
  cd "$srcdir/enthought-traitsgui-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

