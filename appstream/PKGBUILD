# Maintainer: Jameson Pugh <imntreal@gmail.com>

pkgname=appstream
pkgver=0.2.0
pkgrel=1
pkgdesc="Provides a standard for creating app stores across distributions"
arch=('i686' 'x86_64')
url=http://distributions.freedesktop.org/wiki/AppStream
license=('GPL')
depends=('xapian-core' 'polkit' 'libxml2')
makedeps=('cmake' 'vala')
source=("http://www.freedesktop.org/software/appstream/releases/AppStream-$pkgver.tar.gz")
sha256sums=('0147981ac19cde17034ce159fe7a9505c2b3633e46903742a4af6e0c6ca10dc4')

build() {
  mkdir -p "$srcdir/AppStream-$pkgver/build"
  cd "$srcdir/AppStream-$pkgver/build"

  cmake ../
  make
}

package() {
  cd "$srcdir/AppStream-$pkgver/build"

  make DESTDIR="$pkgdir/" install
}

