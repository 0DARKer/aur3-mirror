# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-project-revenue
_pkgname=trytond_project_revenue
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The project_revenue module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-project>=3.2' 'trytond-timesheet>=3.2' 'trytond-timesheet-cost>=3.2' 'trytond-company>=3.2' 'trytond-product>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("a50bd1da9f6b3994afc577af7197fc4b")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}