# Maintainer: Egon Geerardyn <egon.geerardyn@gmail.com>
# Contributor: Adam Dariusz Szkoda <adaszko at gmail dot com>
pkgname=texmacs-qt
pkgver=1.0.7.11
pkgrel=0
pkgdesc="WYSIWYG editor and graphical frontend to various CASes (Qt4)"
arch=(i686 x86_64)
url='http://texmacs.org/'
license=('GPL3')
depends=(qt texlive-core guile imlib2)
provides=(texmacs)
conflicts=(texmacs)
source=(ftp://ftp.texmacs.org/pub/TeXmacs/targz/TeXmacs-$pkgver-src.tar.gz)
md5sums=('f2694269a47190fa681781203428ce94')

build () {
  cd $srcdir/TeXmacs-$pkgver-src
  ./configure --prefix=/usr --enable-qt --with-imlib2 --with-qt
  make || return 1
  make prefix=$pkgdir/usr install
}

