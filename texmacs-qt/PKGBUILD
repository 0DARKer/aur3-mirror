# Contributor: Adam Dariusz Szkoda <adaszko at gmail dot com>
pkgname=texmacs-qt
pkgver=1.0.7
pkgrel=0
pkgdesc="WYSIWYG editor and graphical frontend to various CASes (Qt4)"
arch=(i686)
url='http://texmacs.org/'
license=('GPL3')
depends=(qt4 texlive-core guile cairo imlib2)
provides=(texmacs)
conflicts=(texmacs)
source=(ftp://ftp.texmacs.org/pub/TeXmacs/targz/TeXmacs-$pkgver-src.tar.gz)
md5sums=('4b58579250a697cbf68ed83ef3805030')

build () {
    cd $srcdir/TeXmacs-$pkgver-src
    ./configure --prefix=/usr --enable-qt --with-cairo --with-imlib2
    make || return 1
    make prefix=$pkgdir/usr install
}
