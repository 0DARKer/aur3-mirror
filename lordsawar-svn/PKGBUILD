# Contributor: zoulnix <http://goo.gl/HQaP>
pkgname=lordsawar-svn
pkgver=2386
pkgrel=1
pkgdesc="A turn-based strategy game inspired by Warlords II."
arch=('i686' 'x86_64')
url="http://lordsawar.com/"
license=('GPL')
depends=('gnet' 'libglademm' 'libtar' 'sdl_image' 'sdl_mixer')
makedepends=('autoconf' 'automake' 'boost' 'cvs' 'gcc' 'intltool' 'make' 'pkg-config' 'subversion')
options=('!libtool')
provides=('lordsawar')
conflicts=('lordsawar')
source=()
md5sums=('')

_svnmod="lordsawar"
_svntrunk="svn://svn.sv.gnu.org/lordsawar/lordsawar/trunk"

build() {
  cd ${srcdir}
  install -d ${pkgdir}/usr/share/pixmaps || return 1

  #####
  msg "Getting sources..."
  if [ -d ${_svnmod}/.svn ]; then
    cd ${_svnmod} && svn up -r ${pkgver}
  else
    svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
    cd ${_svnmod}
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  #####

  # Generating build system
  ./autogen.sh || return 1

  ./configure --prefix=/usr \
	      --sysconfdir=/etc \
	      --localstatedir=/var \
	      --disable-static

  make || return 1
  make DESTDIR=${pkgdir} install || return 1

  install -m644 ${srcdir}/${_svnmod}/dat/various/castle_icon.png \
		${pkgdir}/usr/share/pixmaps/${_svnmod}.png || return 1
}
