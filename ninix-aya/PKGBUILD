# Maintainer: Adam <adam900710@gmail.com>
pkgname='ninix-aya'
pkgver=4.4
pkgrel=1
pkgdesc="A desktop mascot programe compatible with 'Ukagaka'."
arch=('any')
url="http://sourceforge.jp/projects/ninix-aya/"
license=('GPLv2')
depends=('python2' 'pygtk' 'gtk2' 'python2-numpy' )
optdepends=('gstreamer0.10-python' 'python2-chardet' 'python2-gconf')
source=(http://dl.sourceforge.jp/$pkgname/58500/$pkgname-$pkgver.tgz)
md5sums=('afc6c870bc159a3249f7a8a86bc5f1ea')

#build() {
#}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make install prefix="${pkgdir}/usr" python="python2"
  sed -e "s,@python,python2,g" -e "s,@libdir,/usr/lib/ninix,g" ${srcdir}/${pkgname}-${pkgver}/bin/ninix.in > ${pkgdir}/usr/bin/ninix
  install -d ${pkgdir}/usr/share/doc/${pkgname}
  mv ${pkgdir}/usr/doc/* ${pkgdir}/usr/share/doc/${pkgname}
}
