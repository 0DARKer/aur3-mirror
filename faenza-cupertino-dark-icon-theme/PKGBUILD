pkgname=faenza-cupertino-dark-icon-theme
pkgver=0.8
pkgrel=1
pkgdesc="Just recoloured the famous Icon theme Faenza designed for Equinox GTK theme"
url="http://gnome-look.org/content/show.php/Faenza-Cupertino-Dark?content=133677"
license=('GPL3')
arch=('any')
makedepends=()
depends=()
optdepends=('faenza-cupertino-icon-theme')
source=("http://gnome-look.org/CONTENT/content-files/133677-Faenza-Cupertino-Dark.tar.gz")
sha256sums=('3514c3ab0caa303282241dab669659076a684248f5893ad782ab5380039f1331')

build() {
	mkdir -p "${pkgdir}"/usr/share/icons
	cp -R -a -f Faenza-Cupertino-Dark/  "${pkgdir}"/usr/share/icons/
 	chown -R root:root "${pkgdir}"/usr
}
