# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-mednafen-lynx-git
_gitname=mednafen-lynx-libretro
pkgver=2012.07.24_cfe1309
pkgrel=1
pkgdesc="libretro implementation of mednafen's Atrai Lynx."
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/mednafen-lynx-libretro"
license=('custom')
makedepends=('git')
source=('git://github.com/libretro/mednafen-lynx-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
  make
}

package()
{
  mkdir -p $pkgdir/usr/lib/libretro
  install -v -m644 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-mednafen-lynx.so
}

