post_upgrade() {
    if [ $(grep -c cjdns /etc/passwd) = 1 ]; then
        echo "This package no longer uses the cjdns user, you can safely delete it if you didn't create it"
    fi
}

post_install() {
    if [ ! $(ps -A | grep -c systemd) = 0 ]; then
        systemctl --system daemon-reload
    fi
}
