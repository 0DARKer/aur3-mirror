# Contributor: Prurigro
# Maintainer: Prurigro

pkgname=cjdns-git
pkgver=120205
pkgrel=1
pkgdesc="A routing engine designed for security, scalability, speed and ease of use."
url="https://github.com/cjdelisle/cjdns"
license="GPLv3"
depends=('libevent' 'iproute2')
makedepends=('git' 'cmake' 'make' 'gcc')
arch=('i686' 'x86_64' 'armv7h')
install=${pkgname}.install

source=('cjdns.rc.d' 'cjdns.conf.d')
md5sums=('030c39b7d382c3890461cc576e7aca2c'
         '1ee5304115631ee3318db7b6eb2bb6df')

build() {
  git clone https://github.com/cjdelisle/cjdns.git
  install -d cjdns/build
  pushd cjdns/build
    Log_LEVEL=DEBUG cmake ..
    make
  popd
}

package() {
  pushd "$srcdir"
    install -d "$pkgdir"/usr/bin
    install -D -m755 cjdns/build/cjdroute "$pkgdir"/usr/bin
    install -d "$pkgdir"/etc/rc.d
    install -d "$pkgdir"/etc/conf.d
    install -D -m755 cjdns.rc.d "$pkgdir"/etc/rc.d/cjdns
    install -D -m644 cjdns.conf.d "$pkgdir"/etc/conf.d/cjdns
  popd
}
