pkgname=firefox-gtk3
pkgver=38.0
pkgrel=1
pkgdesc="Standalone web browser from mozilla.org"
arch=('i686' 'x86_64')
license=('MPL' 'GPL' 'LGPL')
url="https://www.mozilla.org/firefox/"
depends=('desktop-file-utils' 'alsa-lib' 'libxt' 'icu' 'gtk3' 'nss>=3.18.1' 'libevent' 'hunspell'
         'startup-notification' 'libjpeg-turbo' 'libvpx' 'dbus-glib' 'hicolor-icon-theme'
         'gstreamer' 'sqlite')
makedepends=('unzip' 'zip' 'diffutils' 'python2' 'yasm' 'mesa' 'imake' 'libpulse'
             'gst-plugins-base-libs' 'inetutils' 'gtk2')
optdepends=('networkmanager: Location detection via available WiFi networks'
            'gst-plugins-good: h.264 video'
            'gst-libav: h.264 video')
install=firefox.install
options=('!emptydirs' '!makeflags')
provides=('firefox')
conflicts=('firefox')
source_i686=('https://www.dropbox.com/s/uc17jbv5ftis4tc/firefox-gtk3-38.0-i686.tar.gz')
source_x86_64=('https://www.dropbox.com/s/4ygvn9v4g2skwny/firefox-gtk3-38.0-x86_64.tar.gz')
sha256sums_i686=('48823a8c1af19b12f77f560c96b66a6c95428e1d6ba005e68eb4b7ced729f02f')
sha256sums_x86_64=('df8bb584c6dd3cc72349e23b16e5581402c10d83ec2f243f66e5863784ae6878')

package() {
  cd firefox-gtk3

  mv * $pkgdir
}
