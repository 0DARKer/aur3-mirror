# Maintainer: Emiliano Vavassori <syntaxerrormmm(at)gmail.com>
pkgname=ruby-heroku
_gemname=heroku
pkgver=1.17.10
pkgrel=1
pkgdesc="Deploy apps to Heroku from the command line"
arch=(any)
url="http://github.com/heroku/heroku"
license=('MIT')
depends=('ruby' 'ruby-json_pure>=1.4.6' 'ruby-launchy>=0.3.2' 'ruby-rest-client>=1.4.0')
makedepends=(rubygems)
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem
        LICENSE)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('4bd3c038378915dd902d430107267ac1'
         'f27be5c4195289cad66dcee6aef05db2')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_gemname}-${pkgver}.gem
}

package(){
  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
