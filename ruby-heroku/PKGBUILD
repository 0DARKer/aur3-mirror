# Maintainer: Emiliano Vavassori <syntaxerrormmm(at)gmail.com>
pkgname=ruby-heroku
_gemname=heroku
pkgver=3.7.3
pkgrel=1
pkgdesc="Deploy apps to Heroku from the command line"
arch=(any)
url="http://github.com/heroku/heroku"
license=('MIT')
depends=('ruby' 'ruby-heroku-api>=0.3.17' 'ruby-netrc>=0.7.7' 'ruby-launchy>=0.3.2' 'ruby-rest-client>=1.6.1' 'ruby-rqrcode>=0.4.2' 'ruby-rubyzip' 'ruby-term-ansicolor>=1.3.0')
makedepends=('ruby')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('35d0cf470eda17568d2269c5408be6ed')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  install -d "${pkgdir}/usr/bin"
  gem install --ignore-dependencies --no-user-install -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" "${_gemname}-${pkgver}.gem"
}
