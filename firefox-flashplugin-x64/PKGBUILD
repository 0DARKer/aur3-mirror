pkgname=firefox-flashplugin-x64
pkgver=10.2p3_111710
pkgrel=1
pkgdesc="Adobe Flash Player Plugins x64 for Mozilla Firefox"
url="http://adobe.com/"
arch=('x86_64')
depends=('firefox')
license=('EULA')
source=('http://download.macromedia.com/pub/labs/flashplayer10/flashplayer10_2_p3_64bit_linux_111710.tar.gz')
md5sums=('49b55c7eb8044453e5f6f2e4b3cb4084')

build() {
  cd ${srcdir}
  install -d ${pkgdir}/usr/lib/mozilla/plugins
  cp libflashplayer.so ${pkgdir}/usr/lib/mozilla/plugins/
}