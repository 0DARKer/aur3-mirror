pkgname=zarafa-libvmime
pkgver=602
pkgrel=1
pkgdesc="A C++ class library for working with MIME messages"
arch=('i686' 'x86_64')
url="http://www.vmime.org/"
license=('GPL')
depends=('gsasl')
makedepends=('subversion pkgconfig scons')
source=()
md5sums=()

build() {
        cd $srcdir
        svn co https://vmime.svn.sourceforge.net/svnroot/vmime/trunk vmime -r $pkgver

        cd $srcdir/vmime/vmime
        scons prefix=$pkgdir/usr install  || return 1
}
