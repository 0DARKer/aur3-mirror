pkgname=kdeplasma-applets-takeoff
pkgver=1.0
pkgrel=1
pkgdesc="A full screen menu inpired in the aspect of Slingshot and the OS X Launchpad menu but adapted to the KDE users in a plasmoid."
url="http://kde-apps.org/content/show.php/Takeoff?content=144078"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4' )
conflicts=('kdeplasma-addons-applets-takeoff')
replaces=('kdeplasma-addons-applets-takeoff')
source=("http://takeoff-launcher.googlecode.com/files/takeoff-${pkgver}.tar.gz")
md5sums=('ac03a1659d2d66448ae880b3dec06095')

build() {
  mkdir build
  cd build
  cmake ../takeoff-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}