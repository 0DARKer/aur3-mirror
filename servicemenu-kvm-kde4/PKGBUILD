# Mantainerr: Michał "Dinth" Gawroński <dinth1906@gmail.com>
pkgname=servicemenu-kvm-kde4
pkgver=0.2.2
pkgrel=4
pkgdesc="KDE Video Menu is great, ffmpeg-based video converted working as KDE4 servicemenu"
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=50959"
license=('GPL')
depends=(kdebase-workspace ffmpeg)
source=(http://bouveyron.free.fr/kvm/release/kvm4-0.2.2.tar.gz)
md5sums=('63a39062e1391be0edaf2ffd3922a77c')
install=$pkgname.install

build() {
    cd "$srcdir/kvm4"

    install -d $pkgdir/usr/share/kde4/services/ServiceMenus/
    install -m 0644 src/*.desktop $pkgdir/usr/share/kde4/services/ServiceMenus/
    install -m 0755 -D src/kvm $pkgdir/usr/bin/kvm
    install -d $pkgdir/usr/share/kvm/
    install -m 0644 -D icons/* $pkgdir/usr/share/kvm/
    install -D src/x-flv.desktop $pkgdir/usr/share/mimelnk/video/x-flv.desktop
}