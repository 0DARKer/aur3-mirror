# Maintainer: crazyb0y <bjin1990 at gmail dot com>

pkgname=ttf-myuppy
pkgver=1.0
pkgrel=1
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
pkgdesc="a Simplified Chinese font from Monotype Imaging Inc. and Symbian Foundation"
arch=('any')
license=('Eclipse Public Licence 1.0')
url='http://developer.symbian.org/xref/epl/xref/Symbian3/sf/os/textandloc/fontservices/referencefonts/truetype/'
source=(http://developer.symbian.org/xref/oss/raw/Symbian3/sf/os/textandloc/fontservices/referencefonts/truetype/myuppygb-medium.ttf http://developer.symbian.org/xref/oss/raw/Symbian3/sf/os/textandloc/fontservices/referencefonts/truetype/myuppygb-medium_readme.txt)
md5sums=(f098fa58ee50543f3f4e1ad9c069bacc d924496035363b6152f0969e1f96b3eb)
install=$pkgname.install


build()
{
	install -d $pkgdir/usr/share/fonts/TTF/
	install -m644 *.ttf $startdir/pkg/usr/share/fonts/TTF/ || return 1
	install -d $pkgdir/usr/share/licenses/$pkgname/
	install -m644 myuppygb-medium_readme.txt $pkgdir/usr/share/licenses/$pkgname/README
}

