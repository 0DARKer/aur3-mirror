#Maintainer: Jarred Leonardo <jarredleonardo at googlemail dot com>

pkgname=xcursor-sliced
pkgver=1.0
pkgrel=1
pkgdesc="Sliced cursor theme."
arch=(i686 x86_64)
url="http://xfce-look.org/content/show.php/Sliced?content=104872"
license=('Artistic 2.0')
depends=()
source=("http://xfce-look.org/CONTENT/content-files/104872-Sliced.tar.gz")
md5sums=('431751ee71152e955fa478152f56ba72')

build() {
	cd $startdir/src/Sliced
	install -d -m755 $startdir/pkg/usr/share/icons/sliced/cursors
	cd $startdir/src/Sliced/cursors
	for i in * ; do
		install -D -m644 $i $startdir/pkg/usr/share/icons/sliced/cursors
	done
}