# Contributor: Angus Gibson <darthshrine@gmail.com>
pkgname=ipbt
pkgver=r8765
pkgrel=1
pkgdesc="A high-tech ttyrec player"
arch=(i686 x86_64)
url="http://www.chiark.greenend.org.uk/~sgtatham/ipbt/"
license=('MIT')
groups=()
depends=('ncurses')
makedepends=('perl')
provides=('ipbt')
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://www.chiark.greenend.org.uk/~sgtatham/ipbt/$pkgname-$pkgver.tar.gz)
md5sums=('80aa452078bad6aa728925bd373b100d')
noextract=()

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  make || return 1
  install -Dm755 ipbt $startdir/pkg/usr/bin/ipbt
  install -Dm755 ttydump $startdir/pkg/usr/bin/ttydump
  install -Dm755 ttygrep $startdir/pkg/usr/bin/ttygrep
  install -Dm644 ipbt.1 $startdir/pkg/usr/man/man1/ipbt.1
}

# vim:set ts=2 sw=2 et:
