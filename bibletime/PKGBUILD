pkgname=bibletime
origname=bibletime
pkgver=2.8.0
pkgrel=1
pkgdesc="Bible software that uses the Sword Engine for KDE4"
arch=('i686' 'x86_64')
url=("http://www.bibletime.info/")
license=('GPL2')
depends=('qt>=4.5' 'sword' 'openssl')
makedepends=('cmake' 'boost')
#source=(http://downloads.sourceforge.net/project/bibletime/bibletime-$pkgver.tar.bz2)
source=(http://sourceforge.net/projects/bibletime/files/bibletime-$pkgver.tar.bz2)
build() {
  cd $srcdir/bibletime-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_BUILD_TYPE=Release ${srcdir}/$origname-$pkgver || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1

}
md5sums=('4580162f54779259aaafc72c4982e02b')

#http://downloads.sourceforge.net/project/bibletime/BibleTime%202/BibleTime%202%20source%20code/bibletime-2.8.0.tar.bz2