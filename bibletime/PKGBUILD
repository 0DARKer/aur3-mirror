# Maintainer: Tobias T. <OldShatterhand at gmx-topmail dot de>

pkgname=bibletime
origname=bibletime
pkgver=2.9_rc1
pkgrel=1
pkgdesc="Bible software that uses the Sword Engine for KDE4"
arch=('i686' 'x86_64')
url=("http://www.bibletime.info/")
license=('GPL2')
depends=('qt>=4.5' 'sword' 'openssl' 'clucene>=2')
makedepends=('cmake' 'boost-libs')
conflicts=('sword-old' 'clucene-old')
source=(http://sourceforge.net/projects/bibletime/files/bibletime-$pkgver.tar.bz2)
build() {
  cd $srcdir/bibletime-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_BUILD_TYPE=Release ${srcdir}/$origname-$pkgver || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1

}
md5sums=('eec5375f0bc447f4badbea5a8a444897')
