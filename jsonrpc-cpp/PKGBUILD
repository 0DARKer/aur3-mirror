pkgname=jsonrpc-cpp
pkgver=0.2
pkgrel=1
pkgdesc="A C++ implementation of JSONRPC v2 protocol"
url="http://jsonrpc-cpp.sourceforge.net/"
license="GPL3"
arch=('i686' 'x86_64')
depends=('jsoncpp')
makedepends=('scons' 'gcc')
source=("http://sourceforge.net/projects/jsonrpc-cpp/files/jsonrpc-cpp/jsonrpc-cpp-0.2/${pkgname}-${pkgver}.tar.bz2/download")
md5sums=('028a566d3123a864a15a1a8af7cbce46')

build(){
  cd ${startdir}/src/${pkgname}-${pkgver}
  scons 
  scons install -Q prefix=${pkgdir}/usr
}

