pkgname=ttf-everson-mono
pkgver=6.0.6
pkgrel=1
pkgdesc="A simple, elegant, monowidth font."
arch=('any')
url="http://www.evertype.com/emono/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
source=(http://www.evertype.com/emono/evermono.zip)
md5sums=('b155a06d91f0c34c6158cc36a9f4d13e')
install=$pkgname.install

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/evermono-$pkgver/'Everson Mono.ttf' $pkgdir/usr/share/fonts/TTF
  cp $srcdir/evermono-$pkgver/'Everson Mono Oblique.ttf' $pkgdir/usr/share/fonts/TTF
  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp $srcdir/evermono-$pkgver/emono-licence.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
