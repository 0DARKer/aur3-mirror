pkgname=ttf-everson-mono
pkgver=6.0.3
pkgrel=1
pkgdesc="A simple, elegant, monowidth font."
arch=('any')
url="http://www.evertype.com/emono/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
source=(http://www.evertype.com/emono/evermono.zip)
md5sums=('c1846833f6638907fca22dba4d73902a')
install=$pkgname.install

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/evermono-6.0.3/'Everson Mono.ttf' $pkgdir/usr/share/fonts/TTF
  cp $srcdir/evermono-6.0.3/'Everson Mono Oblique.ttf' $pkgdir/usr/share/fonts/TTF
  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp $srcdir/evermono-6.0.3/emono-licence.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
