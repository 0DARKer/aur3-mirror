pkgname=zendstudio
pkgver=10.0.0
pkgrel=2
_date=201302041200
pkgdesc="ZendStudio is the leading PHP IDE for development"
arch=('i686' 'x86_64')
url="http://www.zend.com/en/products/studio/"
depends=('java-environment' 'gtk2' 'unzip' 'libwebkit' 'libxtst' 'svnkit')
install=${pkgname}.install
makedepends=('zip')
license=("EPL/1.1 & ZEND")
source=("http://downloads.zend.com/studio-eclipse/${pkgver}/ZendStudio-${pkgver}-x86_64.tar.gz"
	      "${pkgname}.sh"
	      "${pkgname}.desktop"
              "${pkgname}.png")
sha256sums=('b3d604185e8249bdb55d0de8b86b259d99da45bd70b5e5d7abac11560e310999'
            'dec6d0b1a935065745a663b0c7ba2ac647d314e4b7f9ed96cd2e9ca531d45b6f'
            'c1243073ce1b5a4da9dec5bb6686c615fc2ca88512982a8474e74d8d763dda3f'
            '71ff3b80efe5c65e3733f002af64e7ed29c08118cf20e5d0b6e581e6ed7e4ffe')
[ "$CARCH" = "i686" ] && source[0]="http://downloads.zend.com/studio-eclipse/${pkgver}/${pkgname}-${pkgver}-x86.tar.gz"
[ "$CARCH" = "i686" ] && md5sums[0]='ccee0aeddbf88cabfe143eb4d4d0f552bbb212af584de85ebdae3237b34fbee5'

build() {
 true
}

package() {
  install -m755 -d ${pkgdir}/usr/share
  mv ZendStudio ${pkgdir}/usr/share/${pkgname}

  install -m755 -d ${pkgdir}/usr/bin
  install -m755 ${pkgname}.sh $pkgdir/usr/bin/${pkgname}

  install -m755 -d ${pkgdir}/usr/share/applications
  install -m644 ${pkgname}.desktop $pkgdir/usr/share/applications/

  install -m755 -d ${pkgdir}/usr/share/icons/hicolor/scalable/apps
  cp ${pkgname}.png ${pkgdir}/usr/share/icons/hicolor/scalable/apps/${pkgname}.png
  chmod 644 ${pkgdir}/usr/share/icons/hicolor/scalable/apps/${pkgname}.png
  
  sed -i "s|#!/usr/bin/python|#!/usr/bin/python2|" ${pkgdir}/usr/share/${pkgname}/plugins/org.apache.ant_1.8.3.v20120321-1730/bin/runant.py
}
