# Contributor: Juan Diego Tascon

pkgname=tzclock
pkgver=2.7.6
pkgrel=1
pkgdesc="Cairo clock to display the time around the world"
arch=('i686' 'x86_64')
url="http://tzclock.org/"
license="GPL"
depends=('libgnomeui')
source=("http://tzclock.org/releases/$pkgname-$pkgver.tar.bz2")
md5sums=('94d10e9195629de12bad3d7a6cc65563')

build() {
    cd $srcdir/$pkgname-$pkgver/
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
    cd $srcdir/$pkgname-$pkgver/
	make DESTDIR=${pkgdir} install || return 1
}
