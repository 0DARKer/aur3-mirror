# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=(gmidimonitor)
pkgver=3.4
pkgrel=1
pkgdesc="GMIDImonitor is GTK+ application that shows MIDI events."
arch=('i686' 'x86_64')
url="http://home.gna.org/gmidimonitor/"
license=('GPL')
depends=('jack' 'lash')
source=(http://download.gna.org/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('96281a49da9a5335c8a86d164dd6f553')

build() {
  cd $srcdir/$pkgname-$pkgver

  # Alsa fix
  sed -e '507 s_^_/\*_' \
      -e '533 s_$_\*/_' \
      -e '564 s_^_/\*_' \
      -e '620 s_$_\*/_' \
      -i alsa.c || return 1

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

