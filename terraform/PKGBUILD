# Maintainer: Duncan K. <duncank@fastmail.fm>

pkgname=terraform
pkgver=0.4.0
pkgrel=1
pkgdesc="Tool for building, changing, and versioning infrastructure safely and efficiently"
url='http://www.terraform.io/'
arch=('i686' 'x86_64')
license=('MPL')
# http://dl.bintray.com/mitchellh/terraform/
if [ $CARCH == i686 ]; then
	_archive="terraform_${pkgver}_linux_386.zip"
	sha256sums=('3507ca1da6b84084aae56867a9639d20f843062ba5ec7ed9619132eebb200633')
else
	_archive="terraform_${pkgver}_linux_amd64.zip"
	sha256sums=('57b23ac14dc37b97ff48fa64712e4b00e82e1b603c1d0d4789acf9dd4771f4de')
fi
source=("https://dl.bintray.com/mitchellh/terraform/${_archive}")

package() {
	install -Dm755 ${srcdir}/terraform ${pkgdir}/usr/bin/terraform
	install -Dm755 ${srcdir}/terraform-* ${pkgdir}/usr/bin/
}
