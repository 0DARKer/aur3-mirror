pkgname=terraform-bin
pkgver=0.4.2
pkgrel=2
pkgdesc="Tool for building, changing, and versioning infrastructure safely and efficiently"
url='http://www.terraform.io/'
arch=('i686' 'x86_64')
license=('MPL')
conflicts=('terraform')

# http://dl.bintray.com/mitchellh/terraform/terraform_0.4.2_SHA256SUMS
source_x86_64=("https://dl.bintray.com/mitchellh/terraform/terraform_${pkgver}_linux_amd64.zip")
source_i686=("https://dl.bintray.com/mitchellh/terraform/terraform_${pkgver}_linux_386.zip")
sha256sums_x86_64=('9fc236f86bc6fb002e6058e805ba49c78437cf0c688d26ecfbb21113c9613ec7')
sha256sums_i686=('b2e315fd434d87860fc907d438786bc12ac3b10a99037d9422eb202ad4d82833')

package() {
  install -d ${pkgdir}/usr/bin
	install -Dm755 ${srcdir}/terraform ${srcdir}/terraform-* ${pkgdir}/usr/bin
}
