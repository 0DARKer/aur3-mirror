pkgname=geckofx
pkgver=1.9.2_0.2
pkgrel=1
pkgdesc="Windows Forms control that embeds the Mozilla Gecko browser control in any Windows Forms Application."
url="https://bitbucket.org/hindlemail"
arch=(any)
license=("MPL 1.1")
depends=(gtk-sharp-2 mono)
makedepends=(mono)
options=(!strip)
source=("https://bitbucket.org/hindlemail/geckofx/get/4352673a5976.tar.bz2")
md5sums=('05629fbd53c07f15a2da03f445113c30')

build() {
  cd "$srcdir/hindlemail-geckofx-4352673a5976/Skybound.Gecko"
  xbuild Skybound.Gecko.sln
}

package() {
  cd "$srcdir/hindlemail-geckofx-4352673a5976/Skybound.Gecko/bin/x86/Debug_Linux"
  install -Dm644 Skybound.Gecko.dll "$pkgdir/usr/lib/GeckoFX/Skybound.Gecko.dll"
  gacutil -i Skybound.Gecko.dll -root "$pkgdir/usr/lib"
}
