#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

BACULA_SD_CONF=/etc/bacula/bacula-sd.conf
PID=`pidof -o %PPID /usr/sbin/bacula-sd`

USER=bacula
GROUP=bacula

case $1 in
  start)
    stat_busy "Starting Bacula Storage Daemon"
    [ -z "$PID" ] && /usr/sbin/bacula-sd -u $USER -g $GROUP -c $BACULA_SD_CONF
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon bacula-sd
      stat_done
    fi
    ;;

  stop)
    stat_busy "Stopping Bacula Storage Daemon"
    [ ! -z "$PID" ] && kill $PID &>/dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon bacula-sd
      stat_done
    fi
    ;;
 restart)
    $0 stop
    sleep 3
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"  
esac
exit 0

