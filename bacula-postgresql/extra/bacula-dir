#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

BACULA_DIR_CONF=/etc/bacula/bacula-dir.conf
PID=`pidof -o %PPID /usr/sbin/bacula-dir`

USER=bacula
GROUP=bacula

case $1 in
  start)
    stat_busy "Starting Bacula Director Daemon"
    [ -z "$PID" ] && /usr/sbin/bacula-dir -u $USER -g $GROUP -c $BACULA_DIR_CONF
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon bacula-dir
      stat_done
    fi
    ;;

  stop)
    stat_busy "Stopping Bacula Director Daemon"
    [ ! -z "$PID" ] && kill $PID &>/dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon bacula-dir
      stat_done
    fi
    ;;
 restart)
    $0 stop
    sleep 3
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"  
esac
exit 0

