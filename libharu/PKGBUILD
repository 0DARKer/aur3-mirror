# Maintainer: Auguste <auguste@gmail.com>
# Contributor: Jose Negron <josenj.arch@mailnull.com>
pkgname=libharu
pkgver=2.1.0
pkgrel=2
pkgdesc="C/C++ library for generating PDF documents"
url="http://libharu.org/wiki/Main_Page"
arch=('i686' 'x86_64')
license=('ZLIB')
depends=('libpng')
options=(!libtool)
source=(http://libharu.org/files/$pkgname-$pkgver.tar.gz)
md5sums=('0623b8fb08ae1b28af08b2cdbd66b662')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --with-png --with-zlib
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  install -d /$pkgdir/usr/share/licenses/$pkgname
  sed -n '103,120p' README > $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
