# Contributor: Sebastien Binet <binet@cern.ch>
pkgname=python-mpi4py
pkgver=1.2.2
pkgrel=2
arch=("i686" "x86_64")
pkgdesc="MPI for Python
This package provides MPI support for Python scripting in parallel environments. It is constructed on top of the MPI-1/MPI-2 specification, but provides an object oriented interface which closely follows the MPI-2 C++ bindings."
url="http://mpi4py.scipy.org"
license=("Public Domain")
depends=('openmpi' 'python2')
makedepends=('cython')
source=("http://mpi4py.googlecode.com/files/mpi4py-${pkgver}.tar.gz")
md5sums=('91c1b962529adfd90b9f9f98db5624b7')

build() {
  cd $startdir/src/mpi4py-${pkgver}
  python2 setup.py build || return 1
  python2 setup.py install --prefix=/usr --root=$startdir/pkg

}
