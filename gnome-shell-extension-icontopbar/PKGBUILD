pkgname=gnome-shell-extension-icontopbar
pkgver=2.0
pkgrel=1
pkgdesc="A gnome shell extension that places the tray icons of apps on the top bar."
url="https://aur.archlinux.org/packages.php?ID=53146"
depends=('gnome-shell-extension-gnome2-notifications-git')
license=('GPL2')
arch=('any')
build() {
    cd "$srcdir"
    rm -rf "$pkgdir/usr/share/gnome-shell/extensions/icontopbar@gnome-shell"
}
