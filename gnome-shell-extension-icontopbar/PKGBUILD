# Maintainer: Lev Lybin <lev.lybin@gmail.com>
# Contributor: Lev Lybin <lev.lybin@gmail.com>

pkgname=gnome-shell-extension-icontopbar
pkgver=0.1
pkgrel=1
pkgdesc="A gnome shell extension that places the tray icons of apps on the top bar. Gajim, Skype, Pidgin, Empathy, Parcellite, Opera, Transmission, Vlc, Rhythmbox, Deadbeef. Write an application that is missing in the comments."
url="http://gnome.org"
depends=('gnome-shell')
source=('extension.js' 'metadata.json')
license=('GPL')
arch=('any')
build() {
	cd "$srcdir"
	mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/icontopbar@gnome-shell"
	cp extension.js $pkgdir/usr/share/gnome-shell/extensions/icontopbar@gnome-shell
	cp metadata.json $pkgdir/usr/share/gnome-shell/extensions/icontopbar@gnome-shell
}
md5sums=('f1e5f0b9ab847a01a5d1c7c75fc99c08'
         '50254dc1d09798f9902019afc86c8a29')
