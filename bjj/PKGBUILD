# Maintainer: TDY <tdy@gmx.com>

pkgname=bjj
pkgver=4.2
pkgrel=1
pkgdesc="Bill's Jammin' Jukebox for MPD and Squeezebox"
arch=('any')
url="http://www.thejavashop.net/bjj/"
license=('GPL3')
depends=('java-runtime')
optdepends=('mpd: Music Player Daemon back-end'
            'squeezecenter: Squeezebox back-end')
source=(http://bjj.googlecode.com/files/bjjlinux-$pkgver.tar.gz
        bjj.sh bjj.desktop)
md5sums=('0e42f1a6eaf20efd005e7f94f92620b9'
         '9bde874a66b79c1f3d397e154a2324ad'
         '78717182f1b86cf57e1080ed965a22fc')

build() {
  cd "$srcdir/bjj"
  install -dm755 "$pkgdir/usr/share/java/bjj/lib/"
  install -m644 lib/*.jar "$pkgdir/usr/share/java/bjj/lib/"
  install -m644 [bBlv]*.* "$pkgdir/usr/share/java/bjj/"
  install -Dm755 ../bjj.sh "$pkgdir/usr/bin/bjj"
  install -Dm644 ../bjj.desktop "$pkgdir/usr/share/applications/bjj.desktop"
}
