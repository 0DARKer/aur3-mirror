pkgname=linux-fusion
pkgver=8.2.0
pkgrel=1
pkgdesc="Kernel module providing the IPC for DirectFB multi-app, FusionSound & FusionDale"
arch=(i686 x86_64)
url="http://www.directfb.org"
license="GPL2"
depends=('kernel26')
install=$pkgname.install
source=(http://www.directfb.org/downloads/Core/$pkgname/$pkgname-$pkgver.tar.gz 30-fusion.rules)
md5sums=('bf0a1b710fc5bb0ab19f5051fe2ee259'
'db4fee6ec77914c47cdaf5d945faf84d')
build () {
	cd $startdir/src/$pkgname-$pkgver/
	KERNEL_VERSION=`uname -r`
	INSTALL_MOD_PATH=$startdir/pkg
	KERNELDIR=/lib/modules/$KERNEL_VERSION/build
	make KERNELDIR=$KERNELDIR INSTALL_MOD_PATH=$INSTALL_MOD_PATH 
	echo "INSTALLING"
	make -e SYSROOT=/ KERNELDIR=$KERNELDIR INSTALL_MOD_PATH=$INSTALL_MOD_PATH DESTDIR=$startdir/pkg install
	install -D -m644 $srcdir/30-fusion.rules $startdir/pkg/etc/udev/rules.d/30-fusion.rules
}
