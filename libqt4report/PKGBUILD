
pkgname=libqt4report
pkgver=1.0.0 
pkgrel=1
pkgdesc="A library based on Qt4 to edit reports built from XML files."
arch=('i686' 'x86_64')
url="http://qtidy.hjcms.de/"
license=('LGPL2')
depends=('qt>=4.6' 'log4cpp')
makedepends=('make' 'cmake')
source=(http://heanet.dl.sourceforge.net/project/$pkgname/$pkgname-$pkgver-preAlpha2.tar.gz)
md5sums=('76317bbb2f5167a1241ff0bf7dcfbd0c')

build() {
  cd $srcdir/$pkgname-$pkgver-preAlpha2
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
