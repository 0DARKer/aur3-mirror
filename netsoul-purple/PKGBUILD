# Maintainer: Magicking <syllaur@gmail.com>

pkgname=netsoul-purple
pkgver=0.2.5
pkgrel=2
pkgdesc="Protocol Plugin (prpl) for Gaim for the netsoul IM protocol"
arch=('i686' 'x86_64')
url="http://projects.irq6.net/projects/show/netsoul-purple"
license=('GPL2')
depends=('libpurple')
source=("http://projects.irq6.net/attachments/download/10/${pkgname}_${pkgver}.tar.gz")
md5sums=('6e7ca018dc25886e2eb2dd90fb728636')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

  export PIDGIN_CFLAGS="`pkg-config purple --cflags`"
  export PIDGIN_LIBS="`pkg-config purple --libs`"

  ./configure --prefix=/usr || return 1

  make || return 1
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}

  make DESTDIR="$pkgdir/" install || return 1
}
