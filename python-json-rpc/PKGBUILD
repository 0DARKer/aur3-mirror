# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python-json-rpc
pkgver=1.6.0
pkgrel=1
pkgdesc="JSON-RPC transport realisation"
arch=('i686' 'x86_64')
depends=('python')
makedepends=('python-setuptools')
url="https://github.com/pavlov99/json-rpc"
license=('MIT')
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/j/${pkgname#python-}/${pkgname#python-}-$pkgver.tar.gz)
md5sums=('a6322bf5681ebaee5e2db4edf473b228')
sha256sums=('45eaf6c27f6e5265d7639f7c92bbeed10728ec507942f21e38610f63ed74be8f')

build() {
  cd $srcdir/${pkgname#python-}-$pkgver

  msg 'Building...'
  python setup.py build
}

package() {
  cd $srcdir/${pkgname#python-}-$pkgver

  msg 'Installing...'
  python setup.py install --root="$pkgdir" --optimize=1
}
