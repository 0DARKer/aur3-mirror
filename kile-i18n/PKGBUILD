pkgname=kile-i18n
pkgver=2.1b5
_source_name="kile-lang-2.0.99beta5-30.1.noarch.rpm"
pkgrel=2
pkgdesc="Language packs for kile"
arch=('i686' 'x86_64')
url="http://kile.sourceforge.net"
license=('GPL')
depends=('kile')
makedepends=('rpmextract')
source=("http://ftp5.gwdg.de/pub/opensuse/repositories/KDE:/Release:/46/openSUSE_11.4/noarch/$_source_name")
md5sums=('553b505ed1501ba2cd488b0f4e9c49b1')

build() {
    cd "${pkgdir}"
    rpmextract.sh "${srcdir}/$_source_name" || return 1
}
