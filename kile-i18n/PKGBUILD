pkgname=kile-i18n
pkgver=2.1b4
_source_name="kile-lang-2.0.99beta4-2.3.noarch.rpm"
pkgrel=2
pkgdesc="Language packs for kile"
arch=('i686' 'x86_64')
url="http://kile.sourceforge.net"
license=('GPL')
depends=('kile')
makedepends=('rpmextract')
source=("http://download.opensuse.org/repositories/KDE:/KDE4:/STABLE:/Desktop/openSUSE_11.3/noarch/$_source_name")
md5sums=('345342d6002d64bb6db4d3708661c5df')

build() {
    cd "${pkgdir}"
    rpmextract.sh "${srcdir}/$_source_name" || return 1
}
