# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-devtools-svn
pkgver=25943
pkgrel=1
pkgdesc="Enthought tools to support Python development."
arch=('i686' 'x86_64')
url="http://code.enthought.com/projects/ets_dev_tools.php"
license=('BSD')
depends=('python2' 'docutils' 'python-nose' 'python-pyro'
         'python-reportlab' 'python-numpy>=1.1' 'python-testoob'
         'python-ets-traits-svn' 'python-ets-traitsgui-svn'
         'python-ets-enthoughtbase-svn')
makedepends=('subversion' 'gcc>=3.4' 'python2-distribute')
options=(!emptydirs)

_svnmod=ETSDevTools
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

