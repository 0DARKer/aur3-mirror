# Maintainer: Jeremy Newton (Mystro256)
# Special Thanks to Ivan Nikolaev <voidexp@gmail.com> for assistance of PKGBUILD

pkgname=guitar-pro
pkgver=6.1.0
pkgrel=1
pkgdesc="A popular tablature editor software for guitar, bass, and many other instruments."
arch=('i686' 'x86_64')
if [[ $CARCH == "x86_64" ]]; then
  depends=('lib32-libpulse' 'lib32-libgl' 'lib32-qt' 'lib32-libxslt' 'lib32-portaudio' 'gksu' 'pulseaudio' 'lib32-zlib')
else
  depends=('libpulse' 'libgl' 'qt' 'libxslt' 'portaudio' 'gksu' 'pulseaudio' 'zlib')
fi
makedepends=('binutils' 'tar')
install=${pkgname}.install
url="http://www.guitar-pro.com"
license=('Proprietary')				
# Modified launcher to make sure libz.so.1 is removed after updating
source=('gp-launcher.sh' 'http://dl.dropbox.com/u/42480493/GuitarPro6Latest/gp6-full-linux-demo-r10558.deb')
md5sums=('49a6297cb1d1ed776644e3d340356d3c' 
'769c203363f37c878647dbccd8d65deb')

build() {
	cd "$srcdir"
     
        ar vx gp6-full-linux-demo-r10558.deb || return 1
     
        tar xvzf data.tar.gz || return 1
}
     
package() {  
        cd "$srcdir"
     
	# A little fix
        rm -f ./opt/GuitarPro6/libz.so.1

        rm -f ./opt/GuitarPro6/gp-launcher.sh
	cp -p gp-launcher.sh ./opt/GuitarPro6/
     
        mv -v opt $pkgdir
        mv -v usr $pkgdir
}
     
