pkgname='perl-net-github'
pkgver='0.60'
pkgrel='1'
pkgdesc="Perl Interface for github.com"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-any-moose' 'perl-crypt-ssleay' 'perl-html-tree' 'perl-http-message' 'perl-json-any' 'perl-uri' 'perl-www-mechanize-gzip')
makedepends=('perl-file-slurp')
checkdepends=('perl-test-mockmodule')
url='http://search.mcpan.org/dist/Net-GitHub'
source=('http://search.cpan.org/CPAN/authors/id/F/FA/FAYLAND/Net-GitHub-0.60.tar.gz')
md5sums=('51753738f733e3862c33200ee34f5155')
sha512sums=('4b00150e8b67a2a8f9a243a969c2e3e6022ad6ca187a24d6d3bb8fcff828063d70eb84a7822642ef08835ee34ab52b148d4e8f0a50b81f897446123e367c0faa')
_distdir="Net-GitHub-0.60"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

