pkgname='perl-net-github'
pkgver='0.71'
pkgrel='1'
pkgdesc="Perl Interface for github.com"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-http-message' 'perl-json-any' 'perl-lwp-protocol-https' 'perl-moo' 'perl-type-tiny' 'perl-uri' 'perl-libwww')
makedepends=()
url='http://search.mcpan.org/dist/Net-GitHub'
source=('http://search.mcpan.org/CPAN/authors/id/F/FA/FAYLAND/Net-GitHub-0.71.tar.gz')
md5sums=('e597cf70e0e3fdb5fef1037bc22ccf4b')
sha512sums=('bcf1b0d35b2598f59e6b3d2db26ec0d05f7b20c30848d0a8b3b9f32213d8288068b92fa8969c90c81c2d0a3b94fdf98afca48034d0cb74d92932bb9552e998d2')
_distdir="Net-GitHub-0.71"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

