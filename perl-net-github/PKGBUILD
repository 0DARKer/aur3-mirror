pkgname='perl-net-github'
pkgver='0.66'
pkgrel='1'
pkgdesc="Perl Interface for github.com"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-http-message' 'perl-json-any' 'perl-lwp-protocol-https' 'perl-moo' 'perl-type-tiny' 'perl-uri' 'perl-libwww')
makedepends=()
url='http://search.mcpan.org/dist/Net-GitHub'
source=('http://search.mcpan.org/CPAN/authors/id/F/FA/FAYLAND/Net-GitHub-0.66.tar.gz')
md5sums=('f90d152a7b1a3d8ee1f75df0eb9349bf')
sha512sums=('249008759fc3c5f55134e2170c31f0028a4f8f214a20cb5d218fa50d1db059852249048bf76a98ef469027140bcf00bc182bf446ce711177ee02a663a0c7d48d')
_distdir="Net-GitHub-0.66"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

