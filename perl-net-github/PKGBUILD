pkgname='perl-net-github'
pkgver='0.63'
pkgrel='1'
pkgdesc="Perl Interface for github.com"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-http-message' 'perl-json-any' 'perl-lwp-protocol-https' 'perl-moo' 'perl-type-tiny' 'perl-uri' 'perl-libwww')
makedepends=()
url='http://search.mcpan.org/dist/Net-GitHub'
source=('http://search.mcpan.org/CPAN/authors/id/F/FA/FAYLAND/Net-GitHub-0.63.tar.gz')
md5sums=('336d8a8ddeac5fa3eea3d54bf0f76698')
sha512sums=('6f9f0c3b7e27099483d7b29ac5cd74a4290466392d444851e54d4f621b016c4aace821de2d074a23a888ef13ac02a773fd3ae611880a41e5e149c0289a7279ce')
_distdir="Net-GitHub-0.63"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

