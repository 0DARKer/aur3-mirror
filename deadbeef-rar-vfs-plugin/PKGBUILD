pkgname=deadbeef-rar-vfs-plugin
pkgver=1.8
pkgrel=2
pkgdesc="RAR vfs plugin for DeaDBeeF music player"
arch=("i686" "x86_64")
license=('GPL2')
url="https://github.com/shaohao/vfs_rar"
depends=('deadbeef')
source=('http://www.rarlab.com/rar/unrarsrc-5.0.13.tar.gz' 'git+git://github.com/shaohao/vfs_rar')
md5sums=('901f4957aec5f7ea0a181864a5a3184d'
         'SKIP')

build() {
  mv ${srcdir}/unrar ${srcdir}/vfs_rar/unrar
  cd "${srcdir}/vfs_rar"
  make
}

package() {
  cd "${srcdir}/vfs_rar"
  install -dm755 "${pkgdir}/usr/lib/deadbeef/"
  install -D -m644 vfs_rar.so "${pkgdir}/usr/lib/deadbeef/"
}
