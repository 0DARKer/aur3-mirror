# Maintainer: Joakim Hernberg <jbh at alchemy dot lu>
pkgname=rt-tests
pkgver=0.89
pkgrel=1
pkgdesc="A collection of tools for testing the -rt patched kernel"
arch=('i686' 'x86_64')
url="http://rt.wiki.kernel.org/"
license=('GPL2')
depends=('python2' 'numactl')
source=("ftp://ftp.kernel.org/pub/linux/kernel/people/clrkwllms/${pkgname}-${pkgver}.tar.gz")
md5sums=('f3dcd23f3026a18512e968b4419d79a0')

prepare() {
  cd ${pkgname}
  sed -i s/"shell python"/"shell python2"/g Makefile
}

build() {
  cd ${pkgname}
  make
}

package() {
  cd ${pkgname}
  make prefix=/usr DESTDIR="${pkgdir}/" install
}
