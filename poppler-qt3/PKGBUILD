# Contributor: catweazle
# Contributor: rankin

pkgname=poppler-qt3
pkgver=0.18.0
pkgrel=1
pkgdesc="Poppler Qt3 bindings"
arch=(i686 x86_64)
license=('GPL')
depends=('qt3>=3.3.8' "poppler>=${pkgver}")
makedepends=('pkgconfig')
options=('!libtool')
url="http://poppler.freedesktop.org/"
source=(http://poppler.freedesktop.org/poppler-${pkgver}.tar.gz)
sha256sums=('9019b15ef10a878e607e4088a27fb4967f61cdfada7806d0fee97954f76648e8')

build() {
  . /etc/profile.d/qt3.sh

  cd "${srcdir}/poppler-${pkgver}"

  libtoolize --force --copy
  AT_M4DIR="m4" autoreconf -i
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static \
              --enable-zlib \
              --enable-libjpeg \
              --enable-cairo-output \
              --disable-poppler-glib \
              --disable-gtk-test \
              --disable-poppler-qt4
  sed -i -e 's|^LDFLAGS =|LDFLAGS = -L/opt/qt/lib -lqt-mt|' qt4/Makefile
  pushd poppler
  make libpoppler-cairo.la
  popd
  make
}

package() {
  cd "${srcdir}/poppler-${pkgver}"
 make DESTDIR="${pkgdir}" install
}
