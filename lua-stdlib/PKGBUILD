# Contributor: Pierre Chapuis <catwell at archlinux dot us>
# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=lua-stdlib
pkgver=40
pkgrel=1
pkgdesc='Standard library for Lua'
arch=('any' 'x86_64')
url="http://github.com/$pkgname/$pkgname"
license=('MIT')
depends=('lua')
source=("http://github.com/$pkgname/$pkgname/archive/release-v40.zip")
md5sums=('5777db378874d1582630f20ea2f95d20')

build() {
  cd $pkgname-release-v$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd lua-stdlib-release-v40
  make DESTDIR=$pkgdir install
  install -Dm644 COPYING "$pkgdir"/usrshare/licenses/$pkgname/COPYING
}
