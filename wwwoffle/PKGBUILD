# Contributor: Vasco Costa <vasco dot costa at geekslot dot com>
pkgname=wwwoffle
pkgver=2.9e
pkgrel=1
pkgdesc="Simple proxy server with special features for use with dial-up internet links"
arch=(i686)
url="http://www.gedanken.demon.co.uk/wwwoffle/"
license=('GPL')
depends=('zlib')
backup=('etc/wwwoffle/wwwoffle.conf')
install=$pkgname.install
source=(http://www.gedanken.demon.co.uk/download-wwwoffle/$pkgname-$pkgver.tgz)
md5sums=('39f2dfcf421e0f33286f41043c3075ea')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m755 $startdir/wwwoffle $startdir/pkg/etc/rc.d/wwwoffle
  install -D -m644 $startdir/wwwoffle.conf.d $startdir/pkg/etc/conf.d/wwwoffle
  sed -i -e 's/^#run-uid.*/ run-uid           = wwwoffle/' \
    $startdir/pkg/etc/wwwoffle/wwwoffle.conf
  sed -i -e 's/^#run-gid.*/ run-gid           = wwwoffle/' \
    $startdir/pkg/etc/wwwoffle/wwwoffle.conf
}
