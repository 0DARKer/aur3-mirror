# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
pkgname=c2lib
pkgver=1.4.2
pkgrel=1
pkgdesc="A library of basic tools for use by C programmers"
arch=('i686' 'x86_64')
url="http://www.annexia.org/freeware/c2lib"
license=('GPL')
depends=('pcre')
makedepends=('pcre' 'makeplus' 'cdoc')
source=(http://www.annexia.org/_file/$pkgname-$pkgver.tar.gz)
md5sums=('fb68fc3af35a053d0ec2f992173eaad4')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make+
  make+ test
  make+ DESTDIR=$pkgdir install
}
