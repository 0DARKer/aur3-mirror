pkgname="ibus-bogo"
pkgver=0.3
pkgrel=4
pkgdesc="Vietnamese input method for IBus. \
Git version's https://aur.archlinux.org/packages/ibus-bogo-git/"

arch=('i686' 'x86_64')
url="https://github.com/BoGoEngine/ibus-bogo-python"
license=('GPL v3')
depends=('ibus' 'python' 'python-gobject' 'libwnck3' 'python-pyside-tools')
makedepends=('git' 'cmake' 'gcc')
source=("https://github.com/BoGoEngine/ibus-bogo-python/archive/${pkgver}.tar.gz")
sha1sums=("6bb7b1c3a63df300863aa654c912878216e232c5")


build()  {
	
	cd ${srcdir}/${pkgname}-${pkgver}	
	msg "Starting build..."
	        
	# Building ibus-bogo-python 
	mkdir -p build
	cd build
        
	cmake -DCMAKE_INSTALL_PREFIX:PATH="${pkgdir}/usr" ..
	make
	}
package() {
	cd ${srcdir}/${pkgname}-${pkgver}/build
	make install
	}
	
