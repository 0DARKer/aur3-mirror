# Maintainer: Damien Firmenich <fir.damien@gmail.com> 

pkgname=halide-git
pkgver=1
pkgrel=1
pkgdesc=""
arch=('x86_64')
url="http://halide-lang.org/"
license=('MIT')
depends=('clang' 'llvm')
makedepends=('git')

source=('git+https://github.com/halide/Halide.git')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/Halide"
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir/Halide"
  make
}

package() {
  cd "$srcdir/Halide"
  make BUILD_PREFIX="/usr" distrib
  mv distrib/* $pkgdir
  rm -r distrib
}
