# Maintainer: Christian Sturm <reezer@reezer.org>
pkgname=nsq
pkgver=0.2.28
pkgrel=1
pkgdesc="A realtime distributed messaging platform"
arch=(x86_64)
url="http://bitly.github.io/nsq/"
license=('MIT')
source=("LICENSE" "http://s3.amazonaws.com/bitly-downloads/nsq/nsq-${pkgver}.linux-amd64.go1.2.1.tar.gz")
sha256sums=('89807acf2309bd285f033404ee78581602f3cd9b819a16ac2f0e5f60ff4a473e'
            '25899925c7294002f3b2b9dd037f0b2777a5efe28122379281cb96e9883e79c3')

package() {
	cd "$srcdir/nsq-${pkgver}.linux-amd64.go1.2.1"
  mkdir -p ${pkgdir}/usr/bin
  cp bin/* ${pkgdir}/usr/bin
  install -D -m644 ../LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
