# Maintainer: Michael Fellinger <m.fellinger@gmail.com>
pkgname=nsq
pkgver=0.2.27
pkgrel=1
pkgdesc="A realtime distributed messaging platform"
arch=(x86_64)
url="http://bitly.github.io/nsq/"
license=('MIT')
source=("LICENSE" "http://s3.amazonaws.com/bitly-downloads/nsq/nsq-${pkgver}.linux-amd64.go1.2.tar.gz")
sha256sums=('89807acf2309bd285f033404ee78581602f3cd9b819a16ac2f0e5f60ff4a473e'
            '0063a019025f2fe1cf0d3177d5f8f5c2907859837be9d0bd099e76f863a19bea')

package() {
	cd "$srcdir/nsq-${pkgver}.linux-amd64.go1.2"
  mkdir -p ${pkgdir}/usr/bin
  cp bin/* ${pkgdir}/usr/bin
  install -D -m644 ../LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
