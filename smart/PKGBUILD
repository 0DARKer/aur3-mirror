# Smart Package Manager: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>
# Contrubutor: onestep_ua <onestep@ukr.net>

pkgname=smart
pkgver=1.3
pkgrel=3
pkgdesc="The Smart Package Manager, now with support for pacman!"
arch=("any")
url="http://labix.org/${pkgname}"
license=("GPL")
depends=("python2")
source=(http://launchpad.net/${pkgname}/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.bz2)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	# Config
	sed -i "s|PYTHON?=python|PYTHON?=python2|g" Makefile || return 1
	#sed -i "s|import rpm|import re|g" smart/backends/rpm/base.py || return 1
	#sed -i "s|sysconf.get(\"detect-sys-channels\", True)|\"arch\"|g" smart/plugins/detectsys.py || return 1

	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make DESTDIR=${pkgdir} install || return 1

	# Removals
	rm -r ${pkgdir}/usr/lib/python2.7/site-packages/smart/backends/{deb,rpm,slack}/
	rm -r ${pkgdir}/usr/lib/python2.7/site-packages/smart/channels/*{deb,rpm,slack,red,yast,mirrors}*
}

sha1sums=('709ff515fbe0ec73a9a426145de40546ed186395')
