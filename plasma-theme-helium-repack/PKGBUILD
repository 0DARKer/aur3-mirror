pkgname=plasma-theme-helium-repack
pkgver=4.1.0
pkgrel=1
pkgdesc="Transparent theme based on air and eleonora. Repacked from Helium and old version of Helium One."
arch=('any')
license=('GPL')
url="http://kde-look.org/content/show.php/Helium?content=125471"
depends=('kdebase-workspace') 
source=("Helium Repack $pkgver.tar.xz")
md5sums=('c09d1c2270b3dc4d41147840773d9356')

package() {
	mkdir -p "$pkgdir/usr/share/apps/desktoptheme"
	cp -r "Helium Repack" "$pkgdir/usr/share/apps/desktoptheme"
}
