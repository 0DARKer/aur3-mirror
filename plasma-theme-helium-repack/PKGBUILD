# Maintainer: Ivan Shapovalov <intelfx100@gmail.com>

pkgname=plasma-theme-helium-repack
pkgver=4.1.0
pkgrel=2
pkgdesc="Fork of Helium, a transparent Plasma theme based on Air and Eleonora."
arch=('any')
license=('CC-BY-NC-SA')
url="http://github.com/intelfx/helium-repack"
depends=('kdebase-workspace') 
source=("http://github.com/intelfx/helium-repack/archive/v${pkgver}.tar.gz")

package() {
	mkdir -p "$pkgdir/usr/share/apps/desktoptheme"
	cp -r "helium-repack-$pkgver" "$pkgdir/usr/share/apps/desktoptheme/Helium Repack"
}

md5sums=('7aa4eef82e5a8ee9aead4c3107e608fd')
