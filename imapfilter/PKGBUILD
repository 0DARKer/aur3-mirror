pkgname=imapfilter
pkgver=2.2.2
pkgrel=2
pkgdesc='A mail filtering utility'
url='http://imapfilter.hellug.gr'
arch=('i686' 'x86_64')
license=('MIT')
depends=('lua' 'pcre')
optdepends=('openssl: SSL/TLS encryption and CRAM-MD5 authentication')
source=(http://imapfilter.hellug.gr/source/${pkgname}-${pkgver}.tar.bz2)
md5sums=('09c6ffb085a5a244dc9f3e798259f341')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  # sometimes imapfilter doesn't compile with LDFLAG "--as-needed".
  # in that case, uncomment next line.
  # LDFLAGS="-Wl,--hash-style=gnu -Wl"
  ./configure -d /usr
  make
  make BINDIR=${pkgdir}/usr/bin \
  SHAREDIR=${pkgdir}/usr/share/imapfilter \
  MANDIR=${pkgdir}/usr/share/man install
  # install sample files
  install -D -m644 $srcdir/$pkgname-$pkgver/sample.config.lua $pkgdir/usr/share/$pkgname/config.lua.sample
  install -D -m644 $srcdir/$pkgname-$pkgver/sample.extend.lua $pkgdir/usr/share/$pkgname/extend.lua.sample
  # install license
  install -D -m644 $srcdir/$pkgname-$pkgver/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
