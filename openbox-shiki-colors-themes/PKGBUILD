# Maintainer: OmeGa <omega at mailoo dot org>
# Contributor: grimi <grimi at poczta dot fm>

pkgname=openbox-shiki-colors-themes
pkgver=0.2
pkgrel=3
pkgdesc="Openbox Shiki-Colors matching themes for the GTK and respective Gnome-Colors icon theme."
arch=('any')
url="http://jmcknight.deviantart.com/art/Shiki-Colors-for-Openbox-149966599"
license=('CCPL:by-nc-sa')
depends=('openbox')
source=(http://fc00.deviantart.net/fs71/f/2010/011/1/5/Shiki_Colors_for_Openbox_by_jmcknight.gz)
sha1sums=('eb77656faa5a51d087c9a4956368101aa37486b6')

package() {
  cd "$srcdir"
  find Shiki-* -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}

