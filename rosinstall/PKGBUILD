# Maintainer: Kaiting Chen <kaitocracy@gmail.com>

pkgdesc='Tool to download/boostrap the ROS stack'
url='http://www.ros.org/'

pkgname='rosinstall'
pkgver='0.5.20'
pkgrel='1'
arch=('i686' 'x86_64')
license=('BSD')

depends=('python2' 'cmake' 'wget' 'python2-yaml'
  'python2-distribute' 'git')

source=("http://pr.willowgarage.com/downloads/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('2d0ea542d7ed1f5df8d8ab1170945488')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root=$pkgdir --optimize=1
}
