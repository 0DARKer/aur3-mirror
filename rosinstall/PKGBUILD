# Maintainer: Kaiting Chen <kaitocracy@gmail.com>

pkgdesc='Tool to download/boostrap the ROS stack'
url='http://www.ros.org/'

pkgname='rosinstall'
pkgver='0.5.15'
pkgrel='1'
arch=('i686' 'x86_64')
license=('BSD')

depends=('python2' 'cmake' 'wget' 'python-yaml'
  'python2-distribute')

md5sums=('5d2409cf1bf49904ce7c49d45e6a8fd1')
source=("http://pr.willowgarage.com/downloads/$pkgname/$pkgname-0.5.15.tar.gz")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root=$pkgdir --optimize=1
}
