# Maintainer: Lucas Hermann Negri <lucashnegri@gmail.com>

pkgname=fuzzylite
pkgver=3.1
pkgrel=1
pkgdesc="A Fuzzy Logic Control Library and Application in C++"
arch=('i686' 'x86_64')
url="http://code.google.com/p/fuzzylite/" 
depends=('gcc-libs')
makedepends=('cmake' 'gcc')
license=('Apache')
source=("http://fuzzylite.googlecode.com/files/$pkgname-$pkgver-sources.zip")
md5sums=("d027429d914c18eb6feb86e9ded8092b")

build() { 
  cd "$srcdir/$pkgname-$pkgver/$pkgname"
  mkdir -p build
  cd build
  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/$pkgname/build"
  make install DESTDIR=${pkgdir}
}
