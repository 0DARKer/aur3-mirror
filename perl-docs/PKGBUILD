# Contributor: Andrea Scarpino <andrea@archlinux.org>
# Maintainer: xduugu
pkgname=perl-docs
pkgver=5.10.1
pkgrel=1
pkgdesc="Set of HTML documentation for Perl."
arch=('i686' 'x86_64')
url="http://perldoc.perl.org/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('docs')
source=(http://perldoc.perl.org/perldoc-html.tar.gz)
md5sums=('1daa12a437bdea28f4764289b466f6db')
sha256sums=('f0de9dc61cc9ff7dcd04fa361e7fd6ae6c2fbc3e4a52fd4c30b4183b27ee8bc7')

build() {
  cd "$srcdir/perldoc-html-$pkgver" &&
  install -d "$pkgdir/usr/share/doc/perl/" &&
  cp -rf * "$pkgdir/usr/share/doc/perl" || return 1
}
