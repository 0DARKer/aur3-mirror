# Contributor: Proktor <proktor86@gmail.com>
pkgname=moorie-svn
pkgver=78
pkgrel=1
pkgdesc="Moorhunt-compatible, lightweight file-sharing client for Linux"
arch=(i686)
url="http://www.moorie.pl"
license=('GPL')
depends=(boost gmime curl mcrypt)
makedepends=(subversion automake autoconf)
provides=(moorie)
conflicts=(moorie)
source=()
md5sums=()	 

build() {
  cd $srcdir
  svn co http://svn.mahho.net/public/moorie/trunk .
  cd moorie    
  ./bootstrap.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
