# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=sawfish-session-dialog-git
pkgver=20130910
pkgrel=1
pkgdesc="A graphical Sawfish extension to edit the session preferences"
arch=('any')
url='http://sawfish.wikia.com'
license=('GPL')
depends=('sawfish-git')
makedepends=('git')
provides=('sawfish-session-dialog=0.41')
conflicts=('sawfish-session-dialog')
source=('sawfish-session-dialog::git://github.com/SawfishWM/ssd.git')
md5sums=('SKIP')
_gitname=sawfish-session-dialog

pkgver() {
  cd "$srcdir"/$_gitname
  echo $(git log -1 --format="%cd" --date=short | sed 's|-||g')
}

package() {
  cd "$srcdir"/$_gitname
  sed -i 's+@PREFIX@+/usr+' wrapper.in
  install -Dm755 wrapper.in $pkgdir/usr/bin/ssd
  install -Dm644 ssd.jl $pkgdir/usr/share/sawfish/ssd/ssd.jl
  install -d $pkgdir/usr/share/sawfish/ssd/icons/
  install -m644 icons/*.png $pkgdir/usr/share/sawfish/ssd/icons/
  install -d $pkgdir/usr/share/sawfish/ssd/presets
  install -m644 presets/* $pkgdir/usr/share/sawfish/ssd/presets
}
