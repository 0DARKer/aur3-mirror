# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=sawfish-session-dialog-git
pkgver=cb4f9dd
pkgrel=1
epoch=1
pkgdesc="A graphical Sawfish extension to edit the session preferences"
arch=('any')
url='http://sawfish.wikia.com'
license=('GPL')
depends=('sawfish-git')
makedepends=('git')
provides=('sawfish-session-dialog')
conflicts=('sawfish-session-dialog')
source=(git://github.com/SawfishWM/ssd.git)
_gitname="ssd"
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  # Git tag
  echo $(git describe --always|sed 's/-/./g')
}

build() {
  cd "$srcdir/$_gitname"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir/" install
}
