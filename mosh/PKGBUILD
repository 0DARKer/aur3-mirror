# Contributor: Johan Hidding <johannes (o) hidding (a) gmail (o) com>
pkgname=mosh
pkgver=0.2.3
pkgrel=1
pkgdesc="A fast R6RS scheme interpreter."
arch=('i686' 'x86_64')
url="http://code.google.com/p/mosh-scheme/"
license=('MIT')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
#install=mosh.install
install=
# http://mosh-scheme.googlecode.com/files/mosh-0.2.3.tar.gz
source=(http://mosh-scheme.googlecode.com/files/$pkgname-$pkgver.tar.gz)
noextract=()
# md5sums=() #generate with 'makepkg -g'
md5sums=('a4c7736fb73c70a4de7fe1f00a7245ba')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

