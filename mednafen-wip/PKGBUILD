# Contributor: kagan <juanynie@mi.madritel.es>
pkgname=mednafen-wip
pkgver=0.9.17
pkgrel=1
pkgdesc="A command-line multi-system gaming emulator, WIP version"
url="http://mednafen.sourceforge.net/"
license=(GPL)
arch=('i686' 'x86_64')
depends=('libcdio>=0.82' 'libsamplerate' 'libogg' 'libvorbis' 'sdl' 'sdl_net' 'libsndfile' 'zlib')
makedepends=('pkgconfig' 'mesa')
conflicts=('mednafen')
provides=('mednafen')
source=("http://forum.fobby.net/index.php?t=getfile&id=258&")
md5sums=('8329fdaab54a8ba8ea3e3ca920fb8dc7')

build() 
{
   cd $srcdir/mednafen
   ./configure --prefix=/usr || return 1
   make || return 1
   make DESTDIR=$pkgdir install
}

package()
{
   cd $srcdir/mednafen
   make DESTDIR=$pkgdir install
}
