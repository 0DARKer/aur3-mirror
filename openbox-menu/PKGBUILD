# Contributor: Calimero <calimeroteknik@free.fr>
pkgname=openbox-menu
pkgver=0.3.6
pkgrel=1
pkgdesc="Dynamic XDG menu for openbox"
arch=('i686' 'x86_64')
url="http://mimasgpc.free.fr/openbox-menu-fr.html"
license=('GPL3')
depends=('menu-cache' 'lxmenu-data')
source=(http://mimasgpc.free.fr/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('0291aeba3c13c0868509b5c87f8e0f7a')

build() {
  cd "$srcdir"/$pkgname
  make
  install -D -m755 openbox-menu "$pkgdir"/usr/bin/openbox-menu
}
