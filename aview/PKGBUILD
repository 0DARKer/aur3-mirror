# Contributor: H.Gokhan SARI <hsa2@difuzyon.net>
pkgname=aview
pkgver=1.3.0_rc1
pkgrel=1
pkgdesc="aview is an high quality ascii-art image browser"
arch=(i686 x86_64)
url="http://aa-project.sourceforge.net/aview/"
license=('GPL')
depends=('aalib')
source=('http://mesh.dl.sourceforge.net/sourceforge/aa-project/aview-1.3.0rc1.tar.gz')
md5sums=('093f298e7787591e229b59d039c72f4d')

build() {
  cd $startdir/src/$pkgname-1.3.0
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
}