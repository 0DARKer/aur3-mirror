# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on the gsettings-desktop-schemas package trunk

_pkgbase=gsettings-desktop-schemas
pkgname=gsettings-desktop-schemas-dev
pkgver=2.91.91
pkgrel=1
pkgdesc="Shared GSettings schemas for the desktop"
arch=('any')
url="http://live.gnome.org/"
license=('GPL')
makedepends=('intltool' 'glib2')
install=${pkgname}.install
provides=("${_pkgbase}=${pkgver}")
conflicts=("${_pkgbase}")
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgbase}/2.91/${_pkgbase}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --disable-schemas-compile
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
