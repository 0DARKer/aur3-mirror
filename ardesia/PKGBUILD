# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=ardesia
pkgver=0.9
pkgrel=2
pkgdesc="Free digital sketchpad."
arch=(i686 x86_64)
depends=('gconf' 'cairo' 'gsl' 'libsigsegv' 'libgsf')
optdepends=('vlc: for the recording feature')
makedepends=('make')
source=(http://ardesia.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2)
url="http://code.google.com/p/ardesia/"
license=('GPL3')
sha1sums=('fbcb813f40363f39916abbab972d0d69141d2807')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
