# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=ardesia
pkgver=0.4
pkgrel=1
pkgdesc="Help you to make colored free-hand annotations with digital ink on your computer screen, record it and share on the network. "
arch=(i686 x86_64)
depends=('gconf' 'cairo' 'gsl')
makedepends=('make')
source=(http://ardesia.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
url="http://code.google.com/p/ardesia/"
license=('GPL3')
sha1sums=('cc2ae67e079d4c081dfb53085b312e2dc7fef435')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  mv ${pkgdir}/usr/doc ${pkgdir}/usr/share/doc
}
