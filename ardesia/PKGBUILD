# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=ardesia
pkgver=0.8
pkgrel=1
pkgdesc="Free digital sketchpad."
arch=(i686 x86_64)
depends=('gconf' 'cairo' 'gsl' 'libsigsegv')
makedepends=('make')
source=(http://ardesia.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2)
url="http://code.google.com/p/ardesia/"
license=('GPL3')
sha1sums=('170ead7d71d97b490b055041f9dc3de3e3312571')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
