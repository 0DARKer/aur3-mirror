# Maintainer: Simplet <simplet _AT_ ptigeek.net>

pkgname=auth-yubikey_decrypter
pkgver=0.07
pkgrel=2
pkgdesc="Perl library for decrypting the AES encrypted output generated by the Yubikey."
arch=('i686' 'x86_64')
url="http://search.cpan.org/~massyn/Auth-Yubikey_Decrypter-0.07/"
license=('GPL')
depends=('perl' 'perl-crypt-rijndael')
makedepends=('perl' 'perl-crypt-rijndael')
source=('http://search.cpan.org/CPAN/authors/id/M/MA/MASSYN/Auth-Yubikey_Decrypter-0.07.tar.gz')
sha256sums=('e96a1d4f278dd850e0c5b8e0eda6786c7021e7e0a35a12ba94c38ceb56324f52')

build()
{
	PERL=/usr/bin/perl
	DIST_DIR="${srcdir}/Auth-Yubikey_Decrypter-$pkgver"
	export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
	
	cd $srcdir/Auth-Yubikey_Decrypter-$pkgver
	perl Makefile.PL
	make
	make test
	make install
}
