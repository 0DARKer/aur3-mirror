# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=mstflint
pkgver=1.4
pkgrel=2
pkgdesc="Mellanox firmware burning application"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('bash' 'gcc-libs' 'zlib')
source=("http://www.openfabrics.org/downloads/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('7ab9cba9acfede2411fd2fc2a999c05f')
sha512sums=('977c32e1696cc8c9e0b24dbaeb01a34a9318be8d4a8d1348eccacff537a417b9e752360dd68172dea8a8cf04fa16424ae8466a885a8fcf1429306f45a252c57d')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
