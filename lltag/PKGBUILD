# Contributor: scj <scj(at)archlinux(dot)com>
# Maintainer : Jekyll Wu <adaptee(at)gmail(dot)com>

pkgname=lltag
pkgver=0.14.3
pkgrel=1
pkgdesc="command line music tagger"
arch=('i686' 'x86_64')
url="http://home.gna.org/lltag/"
license=('GPL')
depends=(perl)
optdepends=('mp3info:id3 support'
            'perl-mp3-tag:id3v2 support'
            'vorbis-tools:ogg support'
            'flac:FLAC support')
makedepends=()
provides=()
options=()
install=lltag.install
source=(http://download.gna.org/lltag/${pkgname}-${pkgver}.tar.bz2)
noextract=()
md5sums=('fdd0fdb9a0228bbc8b6bad6199dd4500')

build() {

    cd "${srcdir}/${pkgname}-${pkgver}"
    make || return 1
}

package() {

    cd "${srcdir}/${pkgname}-${pkgver}"

    make \
    DESTDIR="${pkgdir}" \
    PREFIX=/usr \
    SYSCONFDIR=/etc \
    MANDIR=/usr/share/man \
    DOCDIR=/usr/share/doc/${pkgname}-${pkgver} \
    install install-man install-doc
}

# vim:set ts=4 sw=4 et:


