# Maintainer: fplolz <fpoloz@gmail.com>
# Contributor: hm_b < holger at music-nerds dot net >

pkgname=rtirq  
pkgver=20110314
pkgrel=1 
pkgdesc="Realtime IRQ thread system tunning"
url="http://alsa.opensrc.org/Rtirq"
arch=('i686' 'x86_64')
license=('GPL')
depends=('util-linux-ng' 'bash')
install=rtirq.install
source=(http://www.rncbc.org/jack/rtirq-20110314.tar.gz)
md5sums=('8f849d230386ffb6931c71bcfeeac0d4')
build() {
  cd $startdir/src/$pkgname-$pkgver
  sed -e "s|etc/sysconfig/rtirq|etc/conf.d/rtirq|" -i rtirq.sh || return 1
  install -vD rtirq.sh   -m 0755 $pkgdir/etc/rc.d/rtirq || return 1
  install -vD rtirq.conf -m 0644 $pkgdir/etc/conf.d/rtirq || return 1
}
