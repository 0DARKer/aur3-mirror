pkgname=python2-twitter
_srcname=python-twitter
pkgver=1.0
pkgrel=1
pkgdesc='Python 2 wrapper around the Twitter API'
arch=('any')
url='http://code.google.com/p/python-twitter/'
license=('APACHE')
depends=('python2' 'python2-httplib2' 'python2-simplejson' 'python2-oauth2')
source=("http://${_srcname}.googlecode.com/files/${_srcname}-${pkgver}.tar.gz")
md5sums=('16abdc5ba30e43241981d3dd7eeef767')

package() {
  cd $_srcname-$pkgver
  python2 setup.py install --root="$pkgdir"
}

