# Contributor: angrycore <angrycore@gmail.com>

pkgname=mc-fork-svn
pkgver=341
pkgrel=3
pkgdesc="Fork of Midnight Commander"
url="http://mc.redhat-club.org/trac/wiki/EnWikiStart"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gpm' 'e2fsprogs' 'perl' 'slang' 'popt' 'glib2' 'bash')
makedepends=('subversion' 'automake' )
conflicts=('mc' 'mc-cvs')
provides=('mc')
options=('!emptydirs')

source=()
md5sums=()

_svntrunk=http://mc.redhat-club.org/svn/trunk
_svnmod=mc

build() {
  cd ${srcdir}

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./autogen.sh
    
  ./configure --prefix=/usr \
--libexecdir=/usr/lib --sysconfdir=/usr/share \
--without-included-gettext --with-x --with-screen=slang

  make || return 1
  make DESTDIR=${pkgdir} install || return 1

  rm -f $pkgdir/usr/share/locale/locale.alias
  rm -rf ${srcdir}/$_svnmod-build
}
