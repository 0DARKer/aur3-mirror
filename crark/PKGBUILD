pkgname=crark
pkgver=3.3d
download=crark33-linux-nocuda.rar
pkgrel=1
pkgdesc="A command-line utility for RAR 2.x-3.x password cracking, uses Password Cracking Library 2.0 that supports special password recovery language. Highly optimized for all modern processors."
arch=('i686' 'x86_64')
url="http://www.crark.net/"
license="unknown"
depends=('bash' 'unrar')
provides=('crark')
conflicts=('crark-latest')
source=('http://www.crark.net/download/crark33-linux-nocuda.rar')
md5sums=('ff92f093f3b7a1763750bfeeb08f1ca9')
install=install
build() {
  mkdir -p ${pkgname}-${pkgver}
  unrar x -xcrackme ${download} ${pkgname}-${pkgver}
  cd ${srcdir}/${pkgname}-${pkgver}
}
package() {
  mkdir -p ${pkgdir}/opt/${pkgname}
  cp -R ${srcdir}/${pkgname}-${pkgver}/* ${pkgdir}/opt/${pkgname} 
}