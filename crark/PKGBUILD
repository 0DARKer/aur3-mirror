#Contributor: Philipp Geyer <nistur@gmail.com>

pkgname=crark
pkgver=3.3a
pkgrel=1
pkgdesc="Command-line Rar/WinRar password cracker with CUDA support."
arch=(i686)
url="http://www.crark.net/"
license="unknown"
depends=('bash')
source=('http://gizmothegreen.org/madcat/crark/crark$pkgver.tar.gz' \
	'crark.sh' 'crark-hp.sh')
md5sums=('4b3d39afd7f0797f84e6ee1828017af0'
         'eda6f188d2133c372d5c6db234ea622f'
         'b17f7436d97b2c435ed8a19ea90cf28e')
_lang=english
build() {
  cd ${startdir}/src/${pkgname}-${pkgver}

  mkdir -p ${startdir}/pkg/usr/share/${pkgname}
  mkdir -p ${startdir}/pkg/usr/bin

  cp * ${startdir}/pkg/usr/share/${pkgname} 
  cp ${startdir}/src/*.sh ${startdir}/pkg/usr/share/${pkgname}
  ln -sv ${_lang}.def ${startdir}/pkg/usr/share/${pkgname}/password.def
  ln -sv ../share/${pkgname}/${pkgname}.sh ${startdir}/pkg/usr/bin/${pkgname}
  ln -sv ../share/${pkgname}/${pkgname}-hp.sh ${startdir}/pkg/usr/bin/${pkgname}-hp

  chmod a+r ${startdir}/pkg/usr/share/${pkgname}/*.def

}