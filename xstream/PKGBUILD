# Contributor: craven@gmx.net

pkgname=xstream
pkgver=1.3.1
pkgrel=1
pkgdesc="XStream is a simple java library to serialize objects to XML and back again."
arch=('i686' 'x86_64')
url="http://xstream.codehaus.org/index.html"
license=('unknown')
depends=('java-environment')
source=(http://repository.codehaus.org/com/thoughtworks/${pkgname}/${pkgname}-distribution/${pkgver}/${pkgname}-distribution-${pkgver}-bin.zip)

build() {
	mkdir -p ${pkgdir}/usr/share/java/${pkgname}

	cd ${srcdir}
	cd ${pkgname}-${pkgver}/lib/

	install -m644 ../LICENSE.txt ${pkgdir}/usr/share/java/${pkgname} || return 1
	install -m644 ../README.txt ${pkgdir}/usr/share/java/${pkgname} || return 1
	for i in *.jar ; do
            install -m644 ${i} ${pkgdir}/usr/share/java/${pkgname} || return 1
	done
	for i in *.txt ; do
            install -m644 ${i} ${pkgdir}/usr/share/java/${pkgname} || return 1
	done

}

md5sums=('e1acc999f23600625c830d93f404b9e7')
