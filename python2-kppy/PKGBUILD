# Maintainer: Moritz Lipp <mlq@pwmt.org>

_pkgname=kppy
pkgname=python2-kppy
pkgver=1.3.1
pkgrel=1
pkgdesc="A Python-module to provide an API to KeePass 1.x files which are also used by the popular KeePassX."
arch=(any)
url="http://www.nongnu.org/kppy"
license=('GPL')
depends=('python2-crypto' 'python2') 
makedepends=('python2-distribute')
source=("http://download-mirror.savannah.gnu.org/releases/$_pkgname/$_pkgname-$pkgver.tar.gz"
        "default-encoding.patch")
md5sums=('c803b51aa6f518bf4cb9deee480e6cad'
         'bc7f828f3667351858eccd26f6542ac8')

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  msg "Patching..."
  patch -p1 -i $startdir/default-encoding.patch

  msg "Package..."
  python2 setup.py install --root="$pkgdir/" --prefix=/usr --optimize=1
}

# vim:set ts=2 sw=2 et:
