
pkgname=wifiphisher
pkgver=0
pkgrel=1
pkgdesc="Fast automated phishing attacks against WPA networks"
url="https://github.com/sophron/wifiphisher"
arch=(any)
license=('MIT')
depends=('scapy')
source=("wifiphisher-$pkgver::git+https://github.com/sophron/wifiphisher.git")
md5sums=('SKIP')

package() {
  cd "${srcdir}/wifiphisher-$pkgver"
  install -d "$pkgdir"/usr/share/wifiphisher
  cp -r * "$pkgdir"/usr/share/wifiphisher
  install -d "$pkgdir"/usr/bin
  echo "python2 /usr/share/wifiphisher/wifiphisher.py" > "$pkgdir"/usr/bin/wifiphisher
  chmod a+rx "$pkgdir"/usr/bin/wifiphisher
}

