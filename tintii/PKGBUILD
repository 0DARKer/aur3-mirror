pkgname=tintii
pkgver=2.2.0
pkgrel=1
pkgdesc="A smart photo filter for striking colour select effects"
arch=('i686' 'x86_64')
url="http://www.indii.org/tintii/"
license=('GPL')
groups=()
depends=('wxgtk>=2.8.0' 'boost')
makedepends=('scons')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://www.indii.org/files/tint/releases/$pkgname-$pkgver.tar.gz")
noextract=()

build() {
  cd "$srcdir/$pkgname-$pkgver"
  scons PREFIX=/usr || return 1
  mkdir -p $pkgdir/usr/bin/
  mv tintii $pkgdir/usr/bin/
}

md5sums=('c1184c02dfdc7f5b75a22063b466c91a')
