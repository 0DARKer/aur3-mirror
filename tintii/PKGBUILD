# Contributor: SpepS <dreamspepser at yahoo dot it>

pkgname=tintii
pkgver=2.5.2
pkgrel=1
pkgdesc="A smart photo filter for striking colour select effects"
arch=('i686' 'x86_64')
url="http://www.indii.org/tintii/"
license=('GPL')
depends=('wxgtk')
makedepends=('scons' 'boost')
source=("http://www.indii.org/files/tint/releases/$pkgname-$pkgver.tar.gz"
        "$pkgname.patch")
md5sums=('d2d20cba4fc62ec76845ca6c7dbebc2f'
         'b43c96a6a0127fc89cfb9a0de0bdcc77')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # wxwidget 2.8 compatibility patch
  patch -p2 -i ../$pkgname.patch

  scons PREFIX=/usr
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
}
