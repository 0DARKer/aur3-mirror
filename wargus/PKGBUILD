pkgname=wargus
pkgver=2.2.4
pkgrel=1
pkgdesc="Warcraft2 Mod that allows you to play Warcraft2 with the Stratagus engine"
arch=("i686" "x86_64")
url="http://wargus.sourceforge.net/"
license=('GPL')
depends=('stratagus')
makedepends=('tofrodos')
source=("http://prdownloads.sourceforge.net/wargus/wargus-$pkgver-src.tar.gz"
        "wargus"
        "README")
md5sums=('56e2363aeea42566a8b7418ca9c6dd4b'
         '18f288b8d8f687b551bf35244d3a0f56'
         '2d8ceedd446b638a037179071e8e713d')

build() 

{
  msg2 "You must have Warcraft 2 CD mounted at /mnt/cdrom if you want this script to work"
  msg2 "For mor information check the README file"
  cd ${srcdir}/${pkgname}-${pkgver} || return 1
  make || return 1
  dos2unix build.sh || return 1
  sh build.sh || return 1
  
  mkdir -p $pkgdir/usr/bin/
  mkdir -p $pkgdir/usr/share/wargus
  cp -r data.wc2/ $pkgdir/usr/share/wargus/
  install -D -m755 pudconvert wartool $pkgdir/usr/share/wargus/  
  install -D -m644 pudconvert.o wartool.o $pkgdir/usr/share/wargus/  
  install -D -m755 $startdir/wargus $pkgdir/usr/bin/
}

