# Maintainer: Carl George <carl@cgtx.us>

_module="rackspace-monitoring"
pkgname=("python-${_module}" "python2-${_module}")
pkgver="0.6.2"
pkgrel="1"
pkgdesc="Client library for Rackspace Cloud Monitoring"
arch=("any")
url="https://github.com/racker/${_name}"
license=("Apache")
makedepends=("python-setuptools" "python2-setuptools")
source=("https://pypi.python.org/packages/source/${_module:0:1}/${_module}/${_module}-${pkgver}.tar.gz")
sha256sums=('ec89968b52ec851a517858cb7ad9e1449b2f59331ea978290ee7df03e0bdae99')

package_python-rackspace-monitoring() {
	depends=("python-apache-libcloud") # py3 version from aur
	cd ${srcdir}/${_module}-${pkgver}
	python setup.py clean --all
	python setup.py install --root=${pkgdir} --optimize=1
}

package_python2-rackspace-monitoring() {
	depends=("apache-libcloud") # py2 version from community
	cd ${srcdir}/${_module}-${pkgver}
	python2 setup.py clean --all
	python2 setup.py install --root=${pkgdir} --optimize=1
}
