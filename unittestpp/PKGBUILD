# Committer: Piotr Beling <qwak@w8.pl>
pkgname=unittestpp
pkgver=1.4
pkgrel=1
pkgdesc="UnitTest++ is a lightweight unit testing framework for C++."
url="http://unittest-cpp.sourceforge.net/"
depends=()
source=(http://ovh.dl.sourceforge.net/sourceforge/unittest-cpp/unittest-cpp-$pkgver.zip)
arch=(i686 x86_64)
license=('MIT')

build() {
    local srcdir=${startdir}/src/UnitTest++
    local dstdir=${startdir}/pkg/usr
    cd ${srcdir}
    make libUnitTest++.a	|| return 1
    mkdir -p --mode=755 ${dstdir}/lib
    mkdir -p --mode=755 ${dstdir}/include/Posix
    cp ${srcdir}/src/*.h ${dstdir}/include/
    cp ${srcdir}/src/Posix/*.h ${dstdir}/include/Posix
    cp ${srcdir}/libUnitTest++.a ${dstdir}/lib
}

md5sums=('bd373a53403ed51ea1bbb60b1952d7e3')
