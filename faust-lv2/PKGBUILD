# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=faust-lv2
pkgver=0.1
pkgrel=1
pkgdesc="An LV2 architecture for the Faust programming language"
arch=(i686 x86_64)
url="http://code.google.com/p/faust-lv2/"
license=('GPL3' 'LGPL3')
depends=('faust' 'lv2core')
makedepends=('python2')
source=("http://faust-lv2.googlecode.com/files/$pkgname-$pkgver.tar.bz2")
md5sums=('f841de080ed16c0a2af13dd5661c0e3a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 waf configure --prefix=/usr
  python2 waf
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  DESTDIR="$pkgdir/" python2 waf install
}

# vim:set ts=2 sw=2 et:
