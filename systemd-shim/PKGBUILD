# Maintainer: Alad Wenter <alad@linuxbbq.org>
pkgname=systemd-shim
pkgver=6
pkgrel=1
pkgdesc="shim for systemd"
arch=('i686' 'x86_64')
url="https://packages.debian.org/sid/systemd-shim"
license=('GPL')
depends=('cgmanager')
optdepends=('pm-utils: utilities and scripts for power management')
provides=()
conflicts=()
source=("http://ftp.de.debian.org/debian/pool/main/s/systemd-shim/systemd-shim_${pkgver}.orig.tar.xz")
sha256sums=('f1ae09c460b73f12d65cf31831e6561550776b9db60e6368f71a17e60a01dc30')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/${pkgname}
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
