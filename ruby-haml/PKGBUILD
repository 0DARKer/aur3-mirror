# Contributor: Renzo Carbonara <gnuk0001@gmail.com>

pkgname=ruby-haml
_gemname=${pkgname#ruby-}
pkgver=3.1.7
pkgrel=1
pkgdesc="An elegant, structured XHTML/XML templating engine. Comes with Sass, a similar CSS templating engine."
arch=('any')
url="http://haml.info/"
license=('MIT')
groups=()
depends=('ruby' 'ruby-yard>=0.5.3' 'ruby-maruku>=0.5.9')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://gems.rubyforge.org/gems/${_gemname}-${pkgver}.gem")
noextract=("${_gemname}-${pkgver}.gem")
md5sums=('dbde8509b753f50522ad4dd4ab3e3901')

build() {
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
              -n "$pkgdir/usr/bin" ${_gemname}-$pkgver.gem
  install -D "$pkgdir$_gemdir/gems/${_gemname}-$pkgver/MIT-LICENSE" \
             "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
