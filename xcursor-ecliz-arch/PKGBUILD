pkgname=xcursor-ecliz-arch
_pkgname=Ecliz-Arch
pkgver=2.0
pkgrel=1
pkgdesc="Ecliz cursor theme in Arch colours"
arch=(i686 x86_64)
url="http://gnome-look.org/content/show.php/Ecliz?content=110340"
license=('GPL')
depends=()
source=("http://download1347.mediafire.com/g7keu100zbsg/7t71vvj551232ld/Ecliz-Arch.tar.gz")

package() {
	mkdir -p "$pkgdir/usr/share/icons"
		cp -r "$srcdir/$_pkgname" "$pkgdir/usr/share/icons"
		}
		md5sums=('957b855e175134603b5ced89c6f251f9')
