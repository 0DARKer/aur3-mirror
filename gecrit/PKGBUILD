# Maintainer: Dan Serban

pkgname=gecrit
pkgver=latest
pkgrel=1
pkgdesc="A fast, lightweight Python IDE intended for beginners, with common features and a focus on simplicity and ease of use"
arch=(any)
url=http://sourceforge.net/projects/gecrit/
license=(GPL)
depends=(aspell-en python2 python2-pyenchant wxpython)

build()
{
  wget http://downloads.sourceforge.net/project/gecrit/SOURCE/gEcrit.zip
  bsdtar -xvf gEcrit.zip
  mkdir -p "$pkgdir/usr/bin"
  echo "#!/bin/bash" > "$pkgdir/usr/bin/gecrit"
  echo "cd /usr/share/gecrit" >> "$pkgdir/usr/bin/gecrit"
  echo "python2 editorClass.py" >> "$pkgdir/usr/bin/gecrit"
  chmod +x "$pkgdir/usr/bin/gecrit"
  cd gEcrit
  mkdir -p "$pkgdir/usr/share"
  # Rename the app folder
  mv bin gecrit
  # Move it into the right spot
  mv gecrit "$pkgdir/usr/share/"
  mv Documentation "$pkgdir/usr/share/gecrit/"
}
