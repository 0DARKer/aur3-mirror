# Maintainer: Rasmus Steinke <rasi at xssn dot at>

pkgname=teiler-git
pkgver=0.9.2
pkgrel=1
pkgdesc="a simple screenshot/screencast tool written in bash"
arch=('any')
url='http://53280.de/teiler'
license=('GPL')
depends=('bc' 'ffmpeg' 'scrot' 'dmenu' 'xclip' 'dzen2')
optdepends=('dunst' 'mtpaint' 'fb-client' 'byzanz')
options=(!strip)
install="teiler.install"
makedepends=('git')
source=('LICENSE' 'git://github.com/carnager/teiler.git')
md5sums=('295b245540aa61538f9a3556c4be846c' 'SKIP')

pkgver() {
  cd "$srcdir/afew"

  echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

build() {
package() {

  cd "$srcdir/teiler"

  install -D -m755 "$srcdir"/teiler/teiler \
    "$pkgdir"/usr/bin

  install -D -m755 "$srcdir"/teiler/imgclip.py \
    "$pkgdir"/usr/bin

  install -D -m644 "$srcdir"/teiler/config.example \
    "$pkgdir"/usr/share/doc/teiler/config.example

}
}
md5sums=('f2483d70a8a9ee7964fc4bbd7293ce10'
         'SKIP')
