# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>

pkgname=libgsignon-glib-git
_pkgname=${pkgname%-*}
pkgver=2.0.3.r287.db4eff1
pkgrel=1
pkgdesc='gSSO client library'
arch=('i686' 'x86_64')
url='https://01.org/gsso'
license=('LGPL2.1')
depends=('glib2')
makedepends=('git' 'gobject-introspection' 'gtk-doc')
provides=("${pkgname%-*}")
conflicts=("${pkgname%-*}" "${pkgname-bzr}")
source=("${pkgname%-*}::git+https://code.google.com/p/accounts-sso.libgsignon-glib/")
sha256sums=('SKIP')

pkgver() {
  cd ${pkgname%-*}

  printf "2.0.3.r$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

build() {
  cd ${pkgname%-*}

  ./autogen.sh --prefix=/usr --enable-dbus-type=session --enable-introspection=yes
  make
}

package() {
  cd ${pkgname%-*}

  make DESTDIR="${pkgdir}" install
}

# vim: ts=2 sw=2 et:
