# Contributor: Vitaliy Berdinskikh ur6lad[at]i.ua

pkgname=pegdown-cli
pkgver=0.1.1.2
pkgrel=3
pkgdesc="A CLI tool to render Markdown text to HTML"
arch=('i686' 'x86_64')
url="http://code.pi.co.ua/pegdown-cli"
license=('APACHE')
depends=('java-runtime' 'args4j' 'parboiled' 'pegdown')
source=(${url}/downloads/${pkgname}-${pkgver}.jar pegdown.sh)

package() {
	cd $srcdir

	install -D -m 755 pegdown.sh $pkgdir/usr/bin/pegdown || return 1
	install -D -m 644 ${pkgname}-${pkgver}.jar $pkgdir/usr/share/java/${pkgname}/${pkgname}-${pkgver}.jar || return 1
	ln -s ${pkgname}-${pkgver}.jar $pkgdir/usr/share/java/${pkgname}/${pkgname}.jar || return 1
	ln -s /usr/share/java/args4j/args4j.jar $pkgdir/usr/share/java/${pkgname}/args4j.jar || return 1
	ln -s /usr/share/java/parboiled/parboiled4j.jar $pkgdir/usr/share/java/${pkgname}/parboiled4j.jar || return 1
	ln -s /usr/share/java/pegdown/pegdown.jar $pkgdir/usr/share/java/${pkgname}/pegdown.jar || return 1
}


md5sums=('d52e4d78b427430ca0233c6b4fc04c5f'
         '699aa3829c921167636a0b44cc5db4e0')
sha256sums=('7512b252f8b185e6630862aff7ba326cc0bb99d5eb75424a9b12bd97c3f975d1'
            'd5b01bbfbcb8206f0f89e76bbd98e84047e0034eb53dd35c497320e50cc5ae99')
