pkgname=mingw32-nettle
pkgver=2.4
pkgrel=1
pkgdesc="A cryptographic library that is designed to fit easily in more or less any context (mingw32)"
arch=('any')
license=('LGPL')
makedepends=(mingw32-gcc)
url="http://www.lysator.liu.se/~nisse/nettle/"
options=(!strip !buildflags)
source=("ftp://ftp.lysator.liu.se/pub/security/lsh/nettle-$pkgver.tar.gz")
md5sums=('450be8c4886d46c09f49f568ad6fa013')

build() {
  cd "$srcdir/nettle-$pkgver"

  unset LDFLAGS
  ./configure --prefix=/usr/i486-mingw32 --host i486-mingw32
  make || return 1
  make install DESTDIR=$pkgdir || return 1
}

# vim:set ts=2 sw=2 et:
