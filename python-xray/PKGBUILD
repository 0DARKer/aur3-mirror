# Maintainer: Rich Li <rich@dranek.com>
pkgname='python-xray'
pkgver=0.1.1
pkgrel=1
pkgdesc="Extended arrays for working with scientific datasets in Python"
url="https://pypi.python.org/pypi/xray"
arch=('any')
license=('Apache')
makedepends=('python-setuptools')
depends=('python-numpy' 'python-pandas')
optdepends=('python-netcdf4: NetCDF4 support'
            'python-scipy: OPeNDAP support')
#checkdepends=('python-mock' 'python-nose')
source=(https://pypi.python.org/packages/source/x/xray/xray-"$pkgver".tar.gz)
md5sums=('7f0f011a672470f88e724176bcb62408')
 
build() {
  cd "$srcdir/xray-$pkgver"
  python setup.py build
}

# Doesn't work...
#check() {
#  cd "$srcdir/xray-$pkgver"
#  python setup.py test
#}
 
package() {
  cd "$srcdir/xray-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

