# $Id: PKGBUILD 111946 2014-05-27 08:42:58Z jgc $
# Maintainer : Martin Wimpress <code@flexion.org>

pkgname=topmenu-mozilla-git
_gitname=topmenu-mozilla
pkgver=2014.05.23
pkgrel=1
pkgdesc="A Javascript extension that exports menubars over to the TopMenu."
url="https://gitorious.org/topmenu"
arch=('any')
license=('LGPL3')
depends=('topmenu-gtk-git')
makedepends=('git')
groups=('mate-extra')
source=("git://gitorious.org/topmenu/$_gitname.git")
sha1sums=('SKIP')

pkgver() {
   cd "$_gitname"
   git log -1 --format="%cd" --date=short | sed 's|-|.|g'
}

build() {
   cd "${srcdir}/${_gitname}"

   make
}

package() {
    cd "${srcdir}/${_gitname}"
    local _dest="$pkgdir/usr/lib/firefox/browser/extensions/topmenu.mozilla@javispedro.com"
    for i in `cat topmenu-mozilla.files`; do
       install -Dm644 $i "$_dest/$i"
    done
}
