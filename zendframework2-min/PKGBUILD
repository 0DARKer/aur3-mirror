# Maintainer: David Roheim <david.roheim@gmail.com>
pkgname=zendframework2-min
pkgver=2.0.0beta4
pkgrel=1
pkgdesc="An object-oriented framework for PHP - Minimal version"
arch=('any')
url="http://framework.zend.com/"
license=('BSD')
depends=('php')
optdepends=('apache: Webserver'
            'mysql: Database'
            'postgresql: Database')
conflicts=('zendframework2')
source=("http://packages.zendframework.com/releases/ZendFramework-$pkgver/ZendFramework-$pkgver-minimal.tgz")
sha256sums=('420f02a784315fe4a9b77ea55b3ad70043e56d778e0997e8b13b6e72e9530b73')

build() {
    true
}

package() {
    cd "$srcdir/ZendFramework-$pkgver"
    install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    cp -R . "$pkgdir/usr/share/$pkgname"
    install -d "$pkgdir/usr/bin"
    ln -s "/usr/share/$pkgname/bin/zf.sh" "$pkgdir/usr/bin/zf2"
}

