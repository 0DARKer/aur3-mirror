# Maintainer:  Nils Gey <list et nilsgey dot de>
# Based on qtractor 0.4.1 from  Philipp Ãœberbacher <hollunder at gmx dot at>
pkgname=qtractor-cvs
pkgver=20090408
pkgrel=1
pkgdesc="An Audio/MIDI multi-track sequencer"
arch=('i686' 'x86_64')
url="http://qtractor.sourceforge.net/qtractor-index.html"
license=('GPL')
depends=('qt' 'liblo' 'jack-audio-connection-kit' 'rubberband' 'libvorbis' 'libmad')
makedepends=('ladspa' 'dssi' 'cvs')
provides=('qtractor')
conflicts=('qtractor')
makedepends=('cvs')

_cvsroot=":pserver:anonymous@qtractor.cvs.sourceforge.net:/cvsroot/qtractor"
_cvsmod="qtractor"

build() {
  cd ${srcdir}

  msg "Connecting to $_cvsmod.sourceforge.net CVS server...."
  if [ -d $_cvsmod/CVS ]; then
    cd $_cvsmod
    cvs -z3 update -d
  else
    cvs -z3 -d $_cvsroot co -D $pkgver -f $_cvsmod
    cd $_cvsmod
  fi
 
  make -f Makefile.cvs

  msg "CVS checkout done or server timeout"
  msg "Starting make..."

  cp -r ../$_cvsmod ../$_cvsmod-build
  cd ../$_cvsmod-build

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1

  rm -r ${srcdir}/$_cvsmod-build
}
# vim:syntax=sh

