# Contributor: atie H. <atie.at.matrix@gmail.com>

pkgname=ttf-nanumgothic_coding
pkgver=1.65
pkgrel=1
pkgdesc="Nanum series fixed width TrueType fonts"
arch=('i686' 'x86_64')
url="http://hanguel.naver.com"
license=('OFL')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://dev.naver.com/frs/download.php/274/NanumGothicCoding.zip)
md5sums=('baf511681705766e072959f23f352280')

build() {
  cd $srcdir/NanumGothicCoding-$pkgver

  # Install fonts
  mkdir -p $pkgdir/usr/share/fonts/TTF
  install -m644 *.ttf $pkgdir/usr/share/fonts/TTF/

  # Install license
  install -D -m644 COPYING $pkgdir/usr/share/licenses/${pkgname}/license.txt
}

