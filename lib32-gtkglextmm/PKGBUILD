_pkgsourcename=gtkglextmm
pkgname=lib32-gtkglextmm
pkgver=1.2.0
pkgrel=4
pkgdesc="OpenGL extensions for GTK2"
url="http://gtkglext.sourceforge.net"
license=('GPL')
arch=('x86_64')
groups=('lib32')
depends=('lib32-pangomm')
source=(http://www.mirrorservice.org/sites/ftp.archlinux.org/extra/os/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.gz)
md5sums=('13b3725268288dfbde6cb8db2fe5fc4a')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
}
