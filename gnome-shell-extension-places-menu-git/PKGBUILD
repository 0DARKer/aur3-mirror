# Maintainer: Bart Verhoeven <nepherte at archlinux dot us>
pkgname=gnome-shell-extension-places-menu-git
pkgver=20110506
pkgrel=2
pkgdesc="Places menu for gnome shell"
arch=('i686' 'x86_64')
url="http://live.gnome.org/GnomeShell/Extensions"
license=('GPL2')
groups=()
depends=('gnome-shell-extension-common-git')
makedepends=('git' 'gnome-common')
optdepends=()
provides=()
conflicts=('gnome-shell-extensions-git'
           'gnome-shell-extension-places-menu')
replaces=()
backup=()
_gitroot="git://git.gnome.org/gnome-shell-extensions"
_gitname="gnome-shell-extensions"
source=()
md5sums=()

build() {
	cd ${srcdir}
	msg "Connecting to GIT server...."

	if [ -d ${_gitname}/.git ] ; then
	cd ${_gitname}

	if [ -z $( git branch -v | grep anongit ) ] ; then
		git remote set-url origin ${_gitroot}
	fi
    
	git pull origin
		msg "The local files are updated."
	else
		git clone ${_gitroot} ${_gitname}
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	cd ${srcdir}/${_gitname}
	./autogen.sh --prefix=/usr --enable-extensions="places-menu"
}
package() {
	cd ${srcdir}/${_gitname}
	make DESTDIR=${pkgdir} install
	rm -r ${pkgdir}/usr/share/locale
}

