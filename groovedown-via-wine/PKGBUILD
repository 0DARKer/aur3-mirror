# Contributor: Dan Serban (dserban01 => gmail)
pkgname=groovedown-via-wine
pkgver=0.64
pkgrel=1
pkgdesc="A simple GrooveShark downloader that saves music in your /tmp directory"
arch=(i686 x86_64)
url="http://groovedown.tasteless.us/groovedown-on-linux/"
license=(unknown)
depends=(wine libnotify)
makedepends=(unrar)
source=("Groovedown.0.64.rar" groovedown_settings.ini groovedown.sh)
md5sums=("1a931979d60b59bec92ae8ea2030dc1b"
         "4dd56c53f66be0a744a18492ac4506ce"
         "ac502d54f9bd37565f5d2fd810ccdc34")

build()
{
  mkdir -p $pkgdir/usr/bin
  cp groovedown.sh $pkgdir/usr/bin/groovedown
  chmod +x $pkgdir/usr/bin/groovedown
  mkdir -p $pkgdir/usr/share/groovedown
  cp groovedown_settings.ini $pkgdir/usr/share/groovedown
  unrar x "Groovedown.0.64.rar"
  cd "$srcdir/Groovedown 0.64" || return 1
  cp *.exe *.dll $pkgdir/usr/share/groovedown/
}
