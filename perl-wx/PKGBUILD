pkgname=perl-wx
pkgver=0.9903
pkgrel=1
pkgdesc="interface to the wxWidgets GUI toolkit"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~MBARBON/Wx"
license=('GPL' 'PerlArtistic')
depends=('perl' 'wxgtk' )
makedepends=('wxgtk' 'perl-extutils-xspp>=0.15' 'perl-extutils-parsexs>=2.2203' 'perl-alien-wxwidgets>=0.51')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/M/MD/MDOOTSON/Wx-$pkgver.tar.gz) 
md5sums=('ca95c46ababa65c117491dfa5a31f10a')

build() {
  cd  $startdir/src/Wx-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make test || return 1
  make DESTDIR="$pkgdir/" install || return 1 
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
