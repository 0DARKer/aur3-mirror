# Maintainer: Dwayne Bent <dbb.1@liqd.org>

pkgname=luaevent
pkgver=0.3.2
pkgrel=1
pkgdesc="Binding of libevent to Lua."
arch=('i686' 'x86_64')
url="https://github.com/harningt/luaevent"
license=('LGPL2.1')
depends=('libevent>=1.4' 'luasocket' 'lua>=5.1')
source=(https://github.com/harningt/luaevent/tarball/v$pkgver)
md5sums=('e2ebdb2352276f35b55765a45d432983')

build() {
    cd "$srcdir"/*$pkgname*
    make
}

package() {
    cd "$srcdir"/*$pkgname*
    make DESTDIR="$pkgdir" install
}
