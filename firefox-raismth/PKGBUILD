# Maintainer: SpepS <dreamspepser at yahoo dot it>

_name=raismth
pkgname=firefox-$_name
pkgver=3.0.2
pkgrel=2
pkgdesc="Rai.tv live channels, vod and replay contents w/o *light (Silverlight/Moonlight)"
arch=(any)
url="http://acab.servebeer.com/"
license=('GPL3')
depends=('firefox>=5' 'firefox<12')
optdepends=('mplayer: default video player'
            'faad: default audio player')
provides=("$_name")
#source=("$url$_name.xpi")
source=("https://addons.mozilla.org/firefox/downloads/file/144703/rai_smooth_streaming_player_$pkgname-$pkgver-sm+fx.xpi")
md5sums=('21d15a11d10f9309bb6569d1fbb05b59')

build() {
  # works with firefox 11
  sed -i 's/10/11/' "$srcdir/install.rdf"
#  return 0
}

package() {
  cd "$srcdir"

  # extension
  install -d "$pkgdir/usr/lib/firefox/extensions/raismth@mitm.rc"
  cp -a *[^xpi] ${pkgdir}/usr/lib/firefox/extensions/*
}

