_name=raismth
pkgname=firefox-$_name
pkgver=3.0.1
pkgrel=1
pkgdesc="Rai.tv live channels, vod and replay contents w/o *light (Silverlight/Moonlight)"
arch=(any)
url="http://acab.servebeer.com/"
license=('GPL3')
depends=('firefox>=5' 'firefox<11')
provides=("$_name")
#source=("$url$_name.xpi")
source=("https://addons.mozilla.org/firefox/downloads/file/143160/rai_smooth_streaming_player_$pkgname-$pkgver-sm+fx.xpi")
md5sums=('395a1a865b5c02fba42b8a15b3880bb3')

build() {
  return 0
}

package() {
  cd "$srcdir"

  # extension
  install -d "$pkgdir/usr/lib/firefox/extensions/raismth@mitm.rc"
  cp -a *[^xpi] ${pkgdir}/usr/lib/firefox/extensions/*
}

