_pkg=raismth
_ffver=7.0
pkgname=firefox-$_pkg
pkgver=2.0.0
pkgrel=2
pkgdesc="Rai.tv live channels, vod and replay contents w/o *light (Silverlight/Moonlight)"
arch=(any)
url="http://acab.servebeer.com/"
license=('GPL')
depends=("firefox>=$_ffver")
provides=("$_pkg")
source=("$url$_pkg.xpi")
md5sums=('a678d95dc976df3e6345054f71c2daad')

build() {
  return 0
}

package() {
  cd "$srcdir"

  # extension
  install -d "$pkgdir/usr/lib/firefox-$_ffver/extensions/raismth@mitm.rc"
  cp -a *[^xpi] "$pkgdir/usr/lib/firefox-"*/extensions/*
}

