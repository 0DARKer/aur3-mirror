# Maintainer: SpepS <dreamspepser at yahoo dot it>

_pkg=raismth
pkgname=firefox-$_pkg
pkgver=2.0.0
pkgrel=5
pkgdesc="Rai.tv live channels, vod and replay contents w/o *light (Silverlight/Moonlight)"
arch=(any)
url="http://acab.servebeer.com/"
license=('GPL')
depends=('firefox')
provides=("$_pkg")
#source=("$url$_pkg.xpi")
source=("https://addons.mozilla.org/firefox/downloads/file/131072/rai_smooth_streaming_player_$pkgname-$pkgver-sm+fx.xpi")
md5sums=('a678d95dc976df3e6345054f71c2daad')

build() {
  return 0
}

package() {
  cd "$srcdir"

  # extension
  install -d "$pkgdir/usr/lib/firefox/extensions/raismth@mitm.rc"
  cp -a *[^xpi] "$pkgdir/usr/lib/firefox/extensions/"*

  # change max supported version to 9
  find "$pkgdir" -name install.rdf -exec sed -i '/Version/s/7/9/' {} \;
}

