# Contributor: Igor Yanchenko <yanchenko.igor@gmail.com>

pkgname=pygments3
pkgver=1.3.1
pkgrel=1
pkgdesc="Python syntax highlighter"
arch=('any')
url="http://pygments.org/"
license=('BSD')
depends=('python-distribute')
source=(http://pypi.python.org/packages/source/P/Pygments/Pygments-$pkgver.tar.gz)
md5sums=('54be67c04834f13d7e255e1797d629a5')

build() {
  cd "$srcdir/Pygments-$pkgver"

  python3 setup.py install --root="$pkgdir" -O1 || return 1
  mv $pkgdir/usr/bin/pygmentize $pkgdir/usr/bin/pygmentize3

  install -Dm644 external/pygments.bashcomp \
                 "$pkgdir/etc/bash_completion.d/pygments3" || return 1

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
