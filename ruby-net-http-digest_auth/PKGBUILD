pkgname=ruby-net-http-digest_auth
_gemname=net-http-digest_auth
pkgver=1.1.1
pkgrel=1
pkgdesc="Ruby Digest Access Authentication bindings"
arch=(any)
url="http://docs.seattlerb.org/net-http-digest_auth/"
license=('MIT')
depends=('ruby>=1.9' 'rubygems')
makedepends=('rubygems')
source=(https://rubygems.org/downloads/${_gemname}-$pkgver.gem)
noextract=(${_gemname}-$pkgver.gem)
md5sums=('9da7baad77a1cb656bb5a2928d3e5f08')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" "${_gemname}-${pkgver}.gem"
}
