pkgname=m210
pkgver=0.8
pkgrel=1
pkgdesc="M210 provides tools and an userspace device driver for Pegasus Tablet Mobile NoteTakers (or Ritmix DP-305I\DP-205BT) Linux desktop environments."
url="http://tjjr.fi/software/m210/"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=()
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
#install='foo.install'
source=("https://launchpad.net/m210/trunk/0.8/+download/m210-0.8.tar.gz")
md5sums=('c72c4de5a91df1c1dca58beadfac22b7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
#  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr
 ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

