pkgname=acestream-engine
pkgver=2.1.6
pkgrel=2
_ubuntuver=raring
_ubunturel=4
pkgdesc="ACE Stream engine"
arch=('i686' 'x86_64')
url="http://acestream.org/"
license=('unknown')
depends=('python2-apsw' 'python2-m2crypto')
optdepends=('libappindicator: for GTK interface')
conflicts=('acestream')
if [[ "$CARCH" == "i686" ]]; then
  source=("http://repo.acestream.org/ubuntu/pool/main/a/$pkgname/${pkgname}_${pkgver}-1${_ubuntuver}${_ubunturel}_i386.deb")
  sha256sums=('7fd9f40b96881ba07af09fdb22e16e474d68033f0d81877c04aad34f1094a5eb')
else
  source=("http://repo.acestream.org/ubuntu/pool/main/a/$pkgname/${pkgname}_${pkgver}-1${_ubuntuver}${_ubunturel}_amd64.deb")
  sha256sums=('e1a9e365e918c1685625dc3ecc527f31b80cda8629c61c500ed23fccd52e33ad')
fi

package() {
  cd "$srcdir"
  bsdtar -xf data.tar.gz -C "$pkgdir"
}
