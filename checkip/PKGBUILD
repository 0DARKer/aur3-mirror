# Contributor: graysky <graysky AT archlinux dot us>
pkgname=checkip
pkgver=2.04
pkgrel=1
pkgdesc='Simple script that checks to see if your external IP address changed and if so sends an email with the new IP address.'
arch=('any')
url=('https://github.com/graysky2/checkip')
license=('MIT')
depends=('mailsend' 'curl')

source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz")
sha256sums=('8eafa690c621d30371662bd901d7a8f91548776cd49f79114c2bf7b081928b0d')
install=readme.install

build () {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
