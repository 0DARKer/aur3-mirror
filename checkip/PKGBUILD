# Contributor: graysky <graysky AT archlinux dot us>
pkgname=checkip
pkgver=2.00
pkgrel=2
pkgdesc='Simple script that checks to see if your external IP address changed and if so sends an email with the new IP address.'
arch=('any')
url=('https://github.com/graysky2/checkip')
license=('MIT')
depends=('mailsend-dev' 'curl')

source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz")
sha256sums=('b1a2deed88d5f62c54b16b99dba25defc25fc79bcc7793bc1dfa8424a70d9568')
install=readme.install

build () {
	cd "$pkgname-$pkgver"
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
