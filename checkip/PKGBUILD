# Contributor: graysky <graysky AT archlinux dot us>
pkgname=checkip
pkgver=1.1
pkgrel=2
pkgdesc='Simple script that checks to see if your external IP address changed and if so sends an email with the new IP address.'
arch=(any)
license=(GPL)
depends=('sendemail' 'bash' 'curl')
source=(checkip.sh \
checkip.template)
md5sums=('103a30133041ed3fcf78a367656d74fd' \
'9f83f456ddca0d663ced54c8c31bfd19')
url=http://dev/null
backup=(etc/$pkgname.conf)

install=('readme.install')
build() {
	install -D -m755 checkip.sh $pkgdir/usr/bin/$pkgname.sh
	install -D -m644 checkip.template $pkgdir/etc/$pkgname.conf
}



