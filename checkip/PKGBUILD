# Contributor: graysky <graysky AT archlinux dot us>
pkgname=checkip
pkgver=1.12
pkgrel=1
pkgdesc='Simple script that checks to see if your external IP address changed and if so sends an email with the new IP address.'
arch=(any)
url="http://aur.archlinux.org/packages.php?ID=37553"
license=('MIT')
depends=('sendemail' 'curl')
source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz")
sha256sums=('f22c5e8041809e49208a0d1584d23647dabeebca73ab54db3cfae0204a2875e6')
backup=(etc/$pkgname.conf)
install=readme.install

package() {
	cd "$pkgname-$pkgver"
	install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
	install -Dm644 $pkgname.template "$pkgdir/etc/$pkgname.conf"
	install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
