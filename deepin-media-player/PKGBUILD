pkgname=deepin-media-player
pkgver=git201211151414
_pkgver=git201211151414
pkgrel=1
pkgdesc='New multimedia player with brilliant and tweakful UI. PyGtk and Deepin-ui Mplayer2 front-end, with features likes smplayer, but has a brilliant and tweakful UI.'
depends=('python2-scipy' 'python2-pyquery' 'deepin-ui' 'mplayer' 'gstreamer0.10-ugly' 'gstreamer0.10-ugly-plugins' 'python2-formencode')
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL-3')
source=('http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-media-player/deepin-media-player_1+git201211151414_all.deb')

package() {
    tar xzvf ${srcdir}/data.tar.gz -C ${pkgdir}/
    
    cd ${pkgdir}/usr/share/deepin-media-player/src/
    sed -i 's_#! /usr/bin/env python$_#! /usr/bin/env python2_' *.py   
}

md5sums=('7650be89fd61f37e31f42e2aeb07947c')
