pkgname=deepin-media-player
pkgver=git20120605
pkgrel=1
pkgdesc='New multimedia player with brilliant and tweakful UI. PyGtk and Deepin-ui Mplayer2 front-end, with features likes smplayer, but has a brilliant and tweakful UI.'
depends=('python2-scipy' 'python2-pyquery' 'deepin-ui' 'mplayer2')
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL-3')
source=('http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-media-player/deepin-media-player_1+git20120605.orig.tar.gz')

package() {
	install -d $pkgdir/usr/{bin,share/{icons,applications,deepin-media-player}}
	mv $srcdir/deepin-media-player-1+git20120605/debian/bin/deepin-media-player $pkgdir/usr/bin
	mv $srcdir/deepin-media-player-1+git20120605/debian/deepin-media-player.png $pkgdir/usr/share/icons
	mv $srcdir/deepin-media-player-1+git20120605/app_theme $pkgdir/usr/share/deepin-media-player
	mv $srcdir/deepin-media-player-1+git20120605/src $pkgdir/usr/share/deepin-media-player
	mv $srcdir/deepin-media-player-1+git20120605/skin $pkgdir/usr/share/deepin-media-player
	mv $srcdir/deepin-media-player-1+git20120605/AUTHORS $pkgdir/usr/share/deepin-media-player/
	mv $srcdir/deepin-media-player-1+git20120605/README $pkgdir/usr/share/deepin-media-player/
	mv $srcdir/deepin-media-player-1+git20120605/COPYING $pkgdir/usr/share/deepin-media-player/
	mv $srcdir/deepin-media-player-1+git20120605/debian/deepin-media-player.desktop $pkgdir/usr/share/applications/
}

md5sums=('abaf9c48715a684e3a951f16799fe4cf')
