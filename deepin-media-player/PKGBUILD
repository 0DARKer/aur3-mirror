# Maintainer: Li Longyu <leaeasy@gmail.com>
# Contributor: dongfengweixiao <dongfengweixiao@gmail.com>
pkgname=deepin-media-player
pkgver=git2012062119
pkgrel=1
pkgdesc='New multimedia player with brilliant and tweakful UI. PyGtk and Deepin-ui Mplayer2 front-end, with features likes smplayer, but has a brilliant and tweakful UI.'
depends=('python2-scipy' 'python2-pyquery' 'deepin-ui' 'mplayer2')
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL-3')
source=('http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-media-player/deepin-media-player_1+git2012062119.orig.tar.gz' 'deepin-media-player')

package() {
	install -d $pkgdir/usr/{bin,share/{icons,applications,deepin-media-player}}
	install -m 644 $srcdir/$pkgname-1+$pkgver/debian/deepin-media-player.png $pkgdir/usr/share/icons
	install -m 644 $srcdir/$pkgname-1+$pkgver/AUTHORS $pkgdir/usr/share/deepin-media-player/
	install -m 644 $srcdir/$pkgname-1+$pkgver/README $pkgdir/usr/share/deepin-media-player/
	install -m 644 $srcdir/$pkgname-1+$pkgver/COPYING $pkgdir/usr/share/deepin-media-player/
	install -m 644 $srcdir/$pkgname-1+$pkgver/debian/deepin-media-player.desktop $pkgdir/usr/share/applications/
	cp -rf $srcdir/$pkgname-1+$pkgver/app_theme $pkgdir/usr/share/deepin-media-player
	cp -rf $srcdir/$pkgname-1+$pkgver/src $pkgdir/usr/share/deepin-media-player
	cp -rf $srcdir/$pkgname-1+$pkgver/skin $pkgdir/usr/share/deepin-media-player
	sed -i '1s/python/python2.7/' $pkgdir/usr/share/deepin-media-player/src/main.py
	install -m 755 deepin-media-player $pkgdir/usr/bin/
}

md5sums=('d5cd071c9ff3e897c5f19272e86ce6ba'
         '381b335249e02c855e4399dde7adacb9')
