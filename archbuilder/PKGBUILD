# Contributor: Mikael Eriksson <mikael_eriksson@miffe.org>

pkgname=archbuilder
pkgver=0.6
pkgrel=1
pkgdesc="Builds archlinux packages in chroots"
arch=('any')
url="http://miffe.org/wiki/ArchBuilder"
license=('GPL')
depends=('rsync' 'sed' 'coreutils' 'pacman' 'gawk')
source=('archbuilder')
md5sums=('c344354c849116af0534a381c1a6615a')

build() {
  mkdir -p $startdir/pkg/usr/bin
  install -m 755 archbuilder $startdir/pkg/usr/bin
}

