# Contributor: Jonathan Wiersma <archaur at jonw dot org>
pkgname=eclipse-wtp
pkgver=3.3.0
_pkgdate=20110607160810
pkgrel=1
pkgdesc="Webtools framework for the Eclipse platform"
url="http://www.eclipse.org/webtools/"
license="Eclipse Public License"
arch=('any')
depends=( 'eclipse' 'eclipse-emf' 'eclipse-gef' 'java-runtime>=5' )
optdepends=("java-environment>=5" "eclipse-dtp")
provides=('eclipse-wtp-wst')
source=("http://mirror.csclub.uwaterloo.ca/eclipse/webtools/downloads/drops/R$pkgver/R-$pkgver-$_pkgdate/wtp-R-$pkgver-$_pkgdate.zip")

package() {
  cd $srcdir || return 1
  find eclipse -type f | while read file; do
    install -Dm644 "$file" "$pkgdir/usr/share/eclipse/dropins/wtp/$file" || return 1
  done || return 1
}

md5sums=('1fb95d1ea9fe86f72af4fc05f8a38894')
