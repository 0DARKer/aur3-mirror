# Contributor: sausageandeggs <sausageandeggs@archlinux.us>

_pkgname=mpris2
pkgname=$_pkgname-git
pkgver=20130120
pkgrel=1
pkgdesc="Python usable definiton of MPRIS2"
arch=(any)
url=https://github.com/hugosenari/$_pkgname
license=('GPL')
depends=(pydbusdecorator-git)
makedepends=(git)

_gitroot=git://github.com/hugosenari/$_pkgname.git
_gitname=$_pkgname

package() {
    cd "$srcdir"
    msg "Connecting to the GIT server..."
    if [[ -d $_gitname/.git ]]; then
        pushd $_gitname && git pull
        msg2 "The local files are updated."
        popd
    else
        git clone --depth 1 $_gitroot
    fi
    msg2 "GIT checkout done or server timeout"

    rm -rf $_gitname-build/
    cp -r $_gitname/ $_gitname-build/
    cd $_gitname-build/

    msg "Installing..."
    find  -name '*.py' -exec sed -i 's:^#!/usr/bin/python$:&2:' '{}' \;
    python2 setup.py -q install --root="$pkgdir" --optimize=1
}
