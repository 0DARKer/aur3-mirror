# CPAN Name  : String-Flogger
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
pkgname='perl-string-flogger'
pkgver='1.101240'
pkgrel='1'
pkgdesc="string munging for loggers"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-json' 'perl-params-util' 'perl-sub-exporter')
url='http://search.cpan.org/dist/String-Flogger'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/String-Flogger-1.101240.tar.gz')
md5sums=('d306516666a4d0e3cab4a528e0f9b6c9')

build() {
  DIST_DIR="${srcdir}/String-Flogger-1.101240"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&

    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;


  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
