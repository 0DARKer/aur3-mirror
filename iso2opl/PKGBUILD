# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=iso2opl
pkgver=0.1.2
pkgrel=1
pkgdesc="ISO installer for Open USB Loader command-line."
arch=('i686' 'x86_64')
url="http://www.psx-scene.com/forums/showthread.php?t=62141"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://bitbucket.org/ifcaro/open-ps2-loader/get/0.7.tar.gz)
noextract=()
md5sums=('6054d32bab4123422bac2656863374bf')

build() {
  cd "$srcdir/open-ps2-loader/pc"

  make || return 1
  mkdir -p ${pkgdir}/usr/bin || return 1
  cp ${srcdir}/open-ps2-loader/pc/iso2opl/bin/iso2opl ${pkgdir}/usr/bin/|| return 1
}
