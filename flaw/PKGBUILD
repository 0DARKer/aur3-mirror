# Maintainer:  Michael Kogan <michael dot kogan at gmx dot net>

pkgname=flaw
pkgver=1.2.4
pkgrel=1
pkgdesc="A free cross-platform multiplayer action game"
arch=('i686' 'x86_64')
url="http://$pkgname.sourceforge.net/"
license=('GPL3')
depends=('sdl' 'sdl_gfx' 'sdl_image' 'sdl_mixer' 'sdl_ttf' 'ttf-freefont')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('1403c848f91398c29bd4e2efe384996b')
sha1sums=('fa07fecdb1d29aa836298a99b0096a8f2231c3f5')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr --enable-fontpath=/usr/share/fonts/TTF/
    make || return 1
    make DESTDIR=$pkgdir install || return 1
}
