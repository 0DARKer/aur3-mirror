# Maintainer:  Michael Kogan <michael dot kogan at gmx dot net>

pkgname=flaw
pkgver=1.3.0
pkgrel=1
pkgdesc="A free cross-platform multiplayer action game"
arch=('i686' 'x86_64')
url="http://$pkgname.sourceforge.net/"
license=('GPL3')
depends=('boost-libs' 'sdl' 'sdl_gfx' 'sdl_image' 'sdl_mixer' 'sdl_ttf' 'ttf-freefont')
optdepends=('wqy-zenhei: font requiered for Chinese localization')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('c07826c925511ae91e40d165c9338167')
sha1sums=('728c2566fabdb2bf2b18cd1a023a0ccc5d074d5f')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr
    make || return 1
    make DESTDIR=$pkgdir install || return 1
}
