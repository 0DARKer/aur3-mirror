# Contributor: Gregory BELLIER <gregory.bellier -- gmail -- com>

pkgname=ocaml-mysql
pkgver=1.1.2
pkgrel=1
pkgdesc="OCaml bindings for MySQL"
arch=('i686' 'x86_64')
url="http://ocaml-mysql.forge.ocamlcore.org/"
license=('LGPL')
makedepends=('ocaml' 'ocaml-findlib' 'libmysqlclient')
options=('!strip' 'staticlibs')
install=
# OLD source=(https://forge.ocamlcore.org/frs/download.php/336/ocaml-mysql-$pkgver.tar.gz)
#       https://forge.ocamlcore.org/frs/download.php/1308/ocaml-mysql-1.1.2.tar.gz
source=(https://forge.ocamlcore.org/frs/download.php/1308/ocaml-mysql-$pkgver.tar.gz)
md5sums=('1a5842c82110a65cc37f6fce460ada07')

build() {

  cd "$srcdir/ocaml-mysql-$pkgver"

  ./configure || return 1
  make reallyall || return 1

  export OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"
  export OCAMLFIND_LDCONF="ignore"
  install -d $OCAMLFIND_DESTDIR || return 1

  make install || return 1

}

