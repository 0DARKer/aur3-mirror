# Based on gnome-packagekit PKGBUILD by onestep_ua <onestep@ukr.net>

pkgname=gnome-packagekit-git
pkgver=20100320
pkgrel=1
pkgdesc="Collection of graphical tools for PackageKit to be used in the GNOME desktop"
arch=('i686' 'x86_64')
url="http://packagekit.org/"
license=('GPL')
depends=('packagekit' 'gnome-menus' 'libnotify>=0.4.3' 'libsexy>=0.1.10' 'polkit-gnome>=0.8' 'libunique' libcanberra)
makedepends=('git' 'gtk-doc>=1.9' 'gnome-doc-utils>=0.4.2' 'gnome-common' 'intltool')
conflicts=('gnome-packagekit')
provides=('gnome-packagekit')
install=gnome-packagekit-git.install
source=()
md5sums=()

_gitroot="git://git.gnome.org/gnome-packagekit"
_gitname="gnome-packagekit"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d "$srcdir/$_gitname" ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc \
      --disable-scrollkeeper --disable-tests 
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="$pkgdir" install || return 1
  
  gtk-update-icon-cache -f -q -t $pkgdir/usr/share/gnome-packagekit/icons/hicolor
  
  install -m 755 -d "$pkgdir/usr/share/gconf/schemas"
  gconf-merge-schema "$pkgdir/usr/share/gconf/schemas/gnome-packagekit.schemas" "$pkgdir/etc/gconf/schemas/*.schemas" || return 1
  rm -rf "$pkgdir/etc"
}
