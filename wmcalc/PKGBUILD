# Maintainer: Mario BlÃ¤ttermann <mariobl@gnome.org>
pkgname=wmcalc
pkgver=0.3
pkgrel=2
pkgdesc="Dockapp that performs all the functions (and eventually more) of a simple four function calculator"
arch=('i686' 'x86_64')
url="http://www.dockapps.org/file.php/id/130"
license=('GPL')
groups=(x11)
depends=('libxpm')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://www.dockapps.org/download.php/id/455/wmcalc-0.3.tar.gzr.gz)
noextract=()
md5sums=(23ecf19e956d19ef9dddb810989666c5)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make clean
  make INCLUDES=-I/usr/include/X11
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p $startdir/pkg/usr/bin/
  mkdir -p $startdir/pkg/usr/share/doc/$pkgname/
  /bin/install -c $pkgname $startdir/pkg/usr/bin/wmcalc-bin
  /bin/install -c README COPYING .wmcalc $startdir/pkg/usr/share/doc/$pkgname

#startup script
cat > $startdir/pkg/usr/bin/wmcalc << EOF
#!/bin/bash
#test if file already exists
#if yes, then launch

if (test -e \$HOME/.wmcalc) then
         exec wmcalc-bin

#if no, get /usr/share/doc/wmcalc/.wmcalc and copy to \$HOME
else
        cp /usr/share/doc/wmcalc/.wmcalc  \$HOME/.wmcalc
        exec wmcalc-bin
fi
EOF

  chmod +x $startdir/pkg/usr/bin/wmcalc
}

# vim:set ts=2 sw=2 et:
