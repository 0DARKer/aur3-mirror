# Generator  : CPANPLUS::Dist::Arch 1.10
pkgname='perl-autobox'
pkgver='2.71'
pkgrel='1'
pkgdesc="call methods on native types"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-scope-guard>=0.20')
makedepends=()
url='http://search.cpan.org/dist/autobox'
source=('http://search.cpan.org/CPAN/authors/id/C/CH/CHOCOLATE/autobox-2.71.tar.gz')
md5sums=('559aa842c67ea65fd0c52e9abe68839f')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/autobox-2.71"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
