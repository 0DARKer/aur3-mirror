pkgname=serviio-twitch-plugin
pkgver=6
pkgrel=1
pkgdesc="Twitch.tv/Justin.tv plugin for Serviio"
arch=('any')
url="http://forum.serviio.org/viewtopic.php?f=20&t=9216"
license=('unknown')
depends=('serviio')
source=(twitch.groovy::http://forum.serviio.org/download/file.php?id=4431)
sha256sums=('94f3c0b04d56597bb8d924c98212381ec87ef5fb15d509fdfe7e7adde0a99d48')

package() {
  cd "$srcdir"

  install -m 644 -D twitch.groovy "$pkgdir/usr/share/java/serviio/plugins/twitch.groovy"
}

