# Maintainer: Alfonso Saavedra "Son Link" <sonlink.dourden@gmail.com>

pkgname=zesarux
pkgver=1.2
pkgrel=2
pkgdesc="A Zx80/81 and Zx Spectrum 16/48/128/+2/+2A emulator"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/zesarux/"
license=('GPL3')
conflicts=('zesarux-git')
optdepends=('pulseaudio: for support Pulseaudio'
	'openssl: for enable SSL functions')
	
source=('http://sourceforge.net/projects/zesarux/files/ZEsarUX-1.2/ZEsarUX_src-1.2.tar.gz/download')
md5sums=('868e960dc1dd593a8328b20aaf96d2f1')

build() {
	cd "${srcdir}/ZEsarUX-${pkgver}"
	./configure --prefix=/${pkgdir}/usr --disable-caca --disable-aa
	make
}
package(){
	if [  !-d "${pkgdir}/usr" ]; then
		mkdir "${pkgdir}/usr"
	fi
	cd ${srcdir}/ZEsarUX-${pkgver}
	make  DESTDIR="${pkgdir}" install
}
