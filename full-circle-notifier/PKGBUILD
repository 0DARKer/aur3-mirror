# Maintainer: Lucas Westermann <lswest34 AT gmail DOT com>
pkgname=full-circle-notifier
pkgver=1.0.1
pkgrel=2
pkgdesc="Notifier for the popular FCM Ubuntu Community Magazine."
_codename="hat"
arch=('x86_64' 'i686')
url="http://bitbucket.org/mrmonday/full-circle-notifier/"
license=('GPL')
depends=('qjson' 'qt')
source=("http://bitbucket.org/mrmonday/full-circle-notifier/get/$pkgver-$_codename.tar.gz")
md5sums=('2eb2e28cd89739d9c56104089f03ae9c')

build() {
  cd "$srcdir/$pkgname"
  qmake DESTDIR=$pkgdir/opt/$pkgname 
  make
}

package() {
  mkdir -p $pkgdir/usr/bin
  mv $srcdir/$pkgname/assets/usr/share/ $pkgdir/usr/share
  mv $srcdir/$pkgname/* $pkgdir/opt/$pkgname
  ln -s "/opt/full-circle-notifier/fcnotifier" "$pkgdir/usr/bin/fcnotifier"
}

