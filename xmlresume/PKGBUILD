# Contributor: Leif Warner <abimelech@gmail.com>
pkgname=xmlresume
pkgver=1.5.1
pkgrel=1
pkgdesc="An XML DTD and XSL file set for declaration, B2B exchange, and presentation of resumes."
arch=('i686' 'x86_64')
url="http://xmlresume.sourceforge.net/"
license=('custom')
depends=('libxslt')
optdepends=('java-runtime: filter resume to target' 
            'fop: render to PDF'
            'sgml-common: use DTD locally rather than fetching over network')
source=(http://prdownloads.sourceforge.net/xmlresume/resume-1_5_1.tgz)
md5sums=('799b78f4ffcfd14da46ffa03865a9a45')

build() {
  sed -i -e 's|\.\./\.\./css|css|' ${srcdir}/resume-1_5_1/xsl/params.xsl
  mkdir -p $startdir/pkg/usr/share/xml/resume
  cp -R $srcdir/resume-1_5_1/dtd/* $startdir/pkg/usr/share/xml/resume
  mkdir -p $startdir/pkg/usr/share/xsl/resume
  cp -R $srcdir/resume-1_5_1/xsl/* $startdir/pkg/usr/share/xsl/resume
  cp -R $srcdir/resume-1_5_1/css $startdir/pkg/usr/share/xsl/resume/format
  mkdir -p $startdir/pkg/usr/share/java/resume
  cp $srcdir/resume-1_5_1/java/*.jar $startdir/pkg/usr/share/java/resume
  mkdir -p $startdir/pkg/usr/share/licenses/$pkgname
  cp $srcdir/resume-1_5_1/doc/copying/index.html $startdir/pkg/usr/share/licenses/$pkgname
}

# vim:set ts=2 sw=2 et:
