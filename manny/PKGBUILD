# Maintainer: Red Squirrel <iam at redsquirrel dot tk>

pkgname=manny
pkgver=1.0
pkgrel=1
pkgdesc="A Google Music client, manager, player and downloader!"
arch=('i686' 'x86_64')
url="http://www.redsquirrel87.com/manny.html"
license=('freeware')
depends=('gambas3-runtime' 'gambas3-gb-desktop' 'gambas3-gb-form' 'gambas3-gb-gui' 'gambas3-gb-image' 'gambas3-gb-settings' 'gambas3-gb-web' 'curl' 'mplayer')
makedepends=()
optdepends=('vlc: it can be used to play tracks in streaming' 'wget: you need it if you want to download tracks')
install=manny.install
source=($pkgname-$pkgver.tar.gz)
md5sums=('23f5eccce214e07ec121b8ccb845737d')

package() {
  cd $srcdir/$pkgname-$pkgver
  su
  mv manny /usr/share/
  chmod +x /usr/share/manny/manny.gambas
  ln -s /usr/share/manny/manny.gambas /usr/bin/manny
  ln -s /usr/share/manny/Manny.desktop /usr/share/applications/
  exit
}

