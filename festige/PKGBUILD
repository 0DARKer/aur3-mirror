# Maintainer: Renato Budinich <rennabh ET gmail DOT com>
pkgname=festige
pkgver=0.8.3
pkgrel=1
pkgdesc="FeSTige is a GUI for fst and dssi-vst, allowing you to run Windows VST plugins on Linux."
arch=('i686' 'x86')
url="http://festige.sourceforge.net/"
license=('GPL')
depends=('wine' 'pyqt' 'fst-git')
optdepends=('dssi-vst')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('27bcb0f1b50440bcaa68bf3d2c9e8ddf')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
