pkgname=perl-font-afm
pkgver=1.20
pkgrel=2
pkgdesc="Parse Adobe Font Metric files"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~GAAS/Font-AFM"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Font-AFM-$pkgver.tar.gz")
md5sums=('b14ecf4dc4edbd63940aa354eb13c499')

build() {
  cd "$srcdir/Font-AFM-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd "$srcdir/Font-AFM-$pkgver"
  make install DESTDIR="$pkgdir"
}
