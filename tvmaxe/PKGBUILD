# Maintainer: Mamut Ghiunhan <venerix@blug.ro>
pkgname=tvmaxe
pkgver=0.03
pkgrel=1
pkgdesc="Free television for your Linux system"
arch=('i686' 'x86_64')
url="http://dl.dropbox.com/u/1191805"
license=('GPL')
depends=('python2' 'pygtk' 'vlc' 'mplayer' 'libstdc++5' 'sopcast')
[ "$CARCH" == "x86_64" ] && depends=('python2' 'pygtk' 'vlc' 'mplayer' 'libstdc++5' 'bin32-sopcast')
optdepends=('lirc' 'mencoder')
install=('tvmaxe.install')
source=(http://dl.dropbox.com/u/6539285/SRC/$pkgname.tar.gz $pkgname.sh $pkgname.desktop $pkgname.patch)
md5sums=('0cc060f5d1110e7f69dc9e3c12053a2f'
         'f607a19b0467671f534a199c3b8004ed'
         'c1f9956e729fa858245c525666edae73'
         '71fe39c7c733362268b77d998d506f68')
build() {
    patch -Np0 -i $srcdir/$pkgname.patch
    cd $srcdir/$pkgname
    install -m 755 -d $pkgdir/usr/share/$pkgname
    install -m 755 -D $srcdir/$pkgname.sh $pkgdir/usr/bin/$pkgname
    install -m 644 -D $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
    cp -R * $pkgdir/usr/share/$pkgname
}
