# Maintainer:  3ED <krzysztof1987 ta gmail tod com>

pkgname=derpity-gtk-theme
_pkgname=Derpity
_contentid=141726
pkgver=20110515.2
pkgrel=1
pkgdesc="Derpity theme for gtk2 and gtk3"
arch=(any)
license=('GPL')
makedepends=('unzip')
depends=('gtk3')
install=derpity-gtk-theme.install
url="http://gnome-look.org/content/show.php/Derpity?content=${_contentid}"
source=(http://gnome-look.org/CONTENT/content-files/${_contentid}-${_pkgname}.zip)
sha256sums=('3112b90e288998804f9f96327df68973be72363d423fb95e391e6464ce2f4a68')

build() {
  cd "${srcdir}/"

  find "Derpity/" -type d \
    -exec install -dm755 "${pkgdir}/usr/share/themes/{}" \;
  find "Derpity/" -type f -not -name "*~" \
    -exec install -m644 "{}" "${pkgdir}/usr/share/themes/{}" \;

  install -m644 panelbg.png "${pkgdir}/usr/share/themes/Derpity/"
}
