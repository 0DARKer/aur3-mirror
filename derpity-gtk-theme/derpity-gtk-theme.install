post_install() {
  cat <<EOF
>> Set \`gtk-theme-name = Derpity' for..
>>  ..Gtk2 in ~/.gtkrc-2.0 (or use lxapperence)
>>  ..Gtk3 in ~/.config/gtk-3.0/settings.ini
>>                 (or use gnome-tweak-tool)
>>
>> Extra panel background image here:
>>     /usr/share/themes/Derpity/panelbg.png
EOF
}

post_upgrade() {
  post_install $1
}

