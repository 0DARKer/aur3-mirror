# Contributor:  RustyNail <DatRustyNail@gmail.com>

pkgname=banshee-mirage-plugin-svn
pkgver=60
pkgrel=1
pkgdesc="An Automatic Playlist Generation Plugin for Banshee"
arch=('i686')
license=('GPL')
url="http://hop.at/mirage/"
depends=('banshee>=1.3.0' 'mono' 'fftw' 'sqlite3' 'gstreamer0.10' 'libsamplerate')
makedepends=('subversion' 'intltool')
conflicts=('banshee-mirage-plugin')
provides=('banshee-mirage-plugin')

source=()
md5sums=()

_svntrunk=https://svn.hop.at/repos/mirage/
_svnmod=mirage

build() {

  export MONO_SHARED_DIR=${startdir}/src/.wabi
  mkdir -p "${MONO_SHARED_DIR}"

  cd ${srcdir}

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./autogen.sh --prefix=/usr

  make || return 1
  make DESTDIR=${pkgdir} install || return 1

  rm -rf ${srcdir}/$_svnmod-build
}

