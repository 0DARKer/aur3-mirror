# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=transcoder
pkgver=0.0.6
pkgrel=1
pkgdesc="Video converter for Linux using GTK+ and ffmpeg."
arch=('i686' 'x86_64')
url="http://transcoder84.sourceforge.net/"
license=('GPL3')
depends=('ffmpeg' 'gtk2')
source=(http://downloads.sourceforge.net/project/transcoder84/$pkgver/Transcoder_${pkgver}.tar.gz)
md5sums=('a00060ef39ff2e75adde72eeda24d580')


build() {
cd $srcdir/Transcoder*

make
install -Dm755 Transcoder $pkgdir/usr/bin/Transcoder

# Fix desktop file
cd data/
sed -i 's_Icon=/usr/local/share/Transcoder/transcoder.png_Icon=/usr/share/pixmaps/transcoder.png_' transcoder.desktop

# Install desktop entry
install -Dm644 transcoder.desktop $pkgdir/usr/share/applications/transcoder.desktop
install -Dm644 transcoder.png $pkgdir/usr/share/pixmaps/transcoder.png
}
