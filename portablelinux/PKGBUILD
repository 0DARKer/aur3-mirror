#Package Maintainer: Marc Marrash (marc.marrash@gmail.com)
 
pkgname=portablelinux
pkgver=0.9.3
pkgrel=1
pkgdesc="A tool that lets you create bootable USB and removable drives using popular Live CDs based on Casper"
arch=('i686' 'x86_64')
url="http://rudd-o.com/new-projects/portablelinux"
license=('GPL')
depends=('parted' 'python' 'gtk2' 'pygtk' 'dosfstools')
source=('http://rudd-o.com/new-projects/portablelinux/releases/0.9.3/portablelinux-0.9.3.tar.gz')
md5sums=('ba30bec27a6e06e42f3b7d5bc45041a6')

build() {
	cd $srcdir/$pkgname-$pkgver
	./setup.py build
	sudo ./setup.py install
}
