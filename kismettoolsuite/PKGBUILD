## Kismet Tools Suite
# Contributor: nofxx <x@nofxx.com>
pkgname=kismettoolsuite
pkgver='v2.01'
pkgrel=2
pkgdesc="A couple of command-line tools to analyze, convert and merge Kismet log files (.csv, .gps and .xml)."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/kismettoolsuite"
license=('GPL')
depends=(bash)
provides=(kismettoolsuite)
conflicts=(kismettoolsuite)
install=
source=(http://dl.sourceforge.net/sourceforge/kismettoolsuite/$pkgname-$pkgver.tar.gz)
md5sums=('02c19daf2dbc43211a5d011025bc395e')

build() {
	mkdir $startdir/pkg/usr
	mkdir $startdir/pkg/usr/bin
	cd $startdir/src/$pkgname-$pkgver
	cp mergexml $startdir/pkg/usr/bin || return 1
	cp mergecsv $startdir/pkg/usr/bin || return 1
	cp mergegps $startdir/pkg/usr/bin || return 1
	cp csv2ns $startdir/pkg/usr/bin || return 1
	cp csvviewer $startdir/pkg/usr/bin || return 1
	cp extra/custom_ap_manuf $startdir/pkg/usr/bin || return 1
	cp extra/mac_charts $startdir/pkg/usr/bin || return 1
	cp extra/ssid_charts $startdir/pkg/usr/bin || return 1
	}
