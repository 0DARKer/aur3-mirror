# Maintainer: Dany Martineau <dany.luc.martineau at gmail.com>

pkgname=methane
pkgver=1.5.0
pkgrel=3
pkgdesc="Super Methane Brothers is a game in which you use a gas gun to capture baddies. "
arch=('i686' 'x86_64')
url="http://methane.sourceforge.net"
license=('GPL')
depends=('clanlib2-2.1')
makedepends=('make')
source=(http://downloads.sourceforge.net/methane/$pkgname-$pkgver.tgz game.diff methane.desktop)
md5sums=('59d23dadff7b1a23dad05282aaaf6293' '6bdb0823fce4b0ae2c6c7ba21c0323dd' 'a206df2a9f796193c4c54d3669b7f36b')

build() { 
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p1 < ../game.diff
  make 
  install -D -m644 ${srcdir}/methane.desktop \
                   ${pkgdir}/usr/share/applications/methane.desktop
  mkdir -p ${pkgdir}/usr/share/methane
  cp -R {resources,docs} ${pkgdir}/usr/share/methane
  mkdir ${pkgdir}/usr/bin
  install -m 0755 $pkgname ${pkgdir}/usr/bin
}