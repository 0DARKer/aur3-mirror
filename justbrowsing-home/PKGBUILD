# Maintainer: justbrowsing <developer4linux+aur@gmail.com>
pkgname=justbrowsing-home
pkgver=1.0
pkgrel=3
pkgdesc="Home directory for JustBrowsing"
arch=('any')
url="https://github.com/justbrowsing/justbrowsing-home"
license=('unknown')
depends=('shadow' 'withlock-svn')
makedepends=('unzip')
optdepends=('justbrowsing-firefox-profile: Firefox browser profile' 
            'justbrowsing-chrome-profile: Google Chrome browser profile')
source=(https://github.com/justbrowsing/justbrowsing-config-files/archive/master.zip)
md5sums=('d7467bfce7702880b7664278747930f8')
install=$pkgname.install
_userdir="/usr/share/justbrowsing"
_username="justbrowsing"

package() {
  cd "${srcdir}/justbrowsing-config-files-master/home/user"
  mkdir -p "${pkgdir}/${_userdir}/.config"
  cp -r ".config/nitrogen" "${pkgdir}/${_userdir}/.config/"
  mkdir -p "${pkgdir}/${_userdir}/.i3"
  install -m644 ".i3/config" "${pkgdir}/${_userdir}/.i3/"
  install -m644 ".wbar" "${pkgdir}/${_userdir}/"
  mkdir -p "${pkgdir}/${_userdir}/.locks"
  echo "exec i3" >> "${pkgdir}/${_userdir}/.xinitrc"
}
