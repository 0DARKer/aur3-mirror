pkgname=cutter-test_framework
pkgver=1.1.8
pkgrel=1
pkgdesc="cutter is c/c++ unit test framework."
arch=('i686' 'x86_64')
url="http://cutter.sourceforge.net/index.html"
license=('FDL1.3' 'LGPL3')
source=("http://downloads.sourceforge.net/project/cutter/cutter/1.1.8/cutter-$pkgver.tar.gz")
depends=('glib2' 'intltool' 'perl')
optdepends=('gtk2' 'cairo' 'pango' 'libsoup')

build() {
	cd $srcdir/$pkgname-$pkgver
	 ./configure --prefix=/usr \
	 --enable-bfd \
	 --enable-coverage
	 make 
}

package() {
	cd $srcdir/$pkgname-$pkgver
		make DESTDIR="$pkgdir" install
}

md5sums=('b8bca7b9f9f4686099bf0a47a3054049')

