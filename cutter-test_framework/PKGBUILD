pkgname=cutter-test_framework
pkgver=1.2.0
pkgrel=2
pkgdesc="cutter is c/c++ unit test framework."
arch=('i686' 'x86_64')
url="http://cutter.sourceforge.net/index.html"
license=('FDL1.3' 'LGPL3')
source=("http://downloads.sourceforge.net/project/cutter/cutter/$pkgver/cutter-$pkgver.tar.gz")
depends=('glib2' 'intltool' 'perl' 'pkg-config' 'ruby' 'gtk-doc' 'libsoup' 'sudo')
optdepends=('gtk2' 'cairo' 'pango')

build() {
	# You have to install fast_gettext and rdtool form gem.
	sudo /usr/bin/gem install fast_gettext
	sudo /usr/bin/gem install rdtool

	cd $srcdir/cutter-$pkgver
	 ./configure --prefix=/usr \
	 --enable-bfd \
	 --enable-coverage \
	 --enable-gtk-doc \
	 --enable-static=no 
	
	 make 
}

package() {
	cd $srcdir/cutter-$pkgver
	make DESTDIR="$pkgdir" install
}

md5sums=('509963983083be65e729ea646f3f8360')
