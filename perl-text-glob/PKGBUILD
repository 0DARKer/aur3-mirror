# Maintainer: Lukas Fleischer <archlinux at cryptocrack dot de>
# Contributor: François Charette <firmicus ατ gmx δοτ net>

pkgname=perl-text-glob
pkgver=0.08
pkgrel=3
pkgdesc="Match globbing patterns against text."
arch=('i686' 'x86_64')
url="http://search.cpan.org/~RCLAMP/Text-Glob"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=("http://www.cpan.org/authors/id/R/RC/RCLAMP/Text-Glob-$pkgver.tar.gz")
md5sums=('39a1a3e890cd5d3f51a707579098bc1c')

build() {
  cd $srcdir/Text-Glob-$pkgver

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd $srcdir/Text-Glob-$pkgver

  make install DESTDIR="${pkgdir}"
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
