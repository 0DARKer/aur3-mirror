# Created By medved55rus
pkgname=modem-manager-gui
pkgver=0.0.12
pkgrel=1
pkgdesc="Frontend for ModemManager daemon able to control specific modem functions."
url="http://linuxonly.ru"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('gtk3>=3.4.0' 'glib2>=2.32.1' 'gdbm>=1.10' 'libnotify>=0.7.5')
makedepends=('pkgconfig' 'gtk3>=3.4.0' 'glib2>=2.32.1' 'gdbm>=1.10' 'libnotify>=0.7.5')
source=("http://linuxonly.ru/cms/request.php?14")
md5sums=('c6e812072e92361870d46a7f9a635b73')
 
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure
  make
}
 
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}