pkgname=kdepimlibs4-git
pkgver=20110208
pkgrel=2
pkgdesc="KDE4 PIM Libraries"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdelibs4-git' 'gpgme' 'akonadi-git' 'libical' )
makedepends=('pkgconfig' 'cmake' 'automoc4' 'boost' 'cyrus-sasl' 'openldap'
             'docbook-xsl')
install='kdepimlibs.install'

_gitroot="git://anongit.kde.org/kdepimlibs"
_gitname="kdepimlibs"

build() {
. /etc/profile.d/kde-git.sh
 cd $srcdir
  msg "Connecting to the GIT server...."
  
  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  
  msg "GIT checkout done"
  msg "Starting make..."
  
  
  mkdir $srcdir/$_gitname-build
  
  cd $srcdir/$_gitname-build

  cmake $startdir/src/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
    				-DCMAKE_SKIP_RPATH=OFF \
    				-DCMAKE_INSTALL_PREFIX=/opt/kde4
  make
}

package() {
  cd ${srcdir}/$_gitname-build
  make DESTDIR=$pkgdir install
  rm -r $srcdir/$_gitname-build
}
