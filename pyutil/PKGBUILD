pkgname=pyutil
pkgver=1.7.9
pkgrel=4
pkgdesc="general-purpose python library (used by tahoe-lafs)"
arch=('i686' 'x86_64')
url='http://tahoe-lafs.org/trac/pyutil'
license=('GPL2')
groups=()
depends=('python2')
makedepends=('setuptools' 'darcsver' 'setuptools_darcs') # missing: setuptools_trial
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=( http://pypi.python.org/packages/source/p/pyutil/pyutil-$pkgver.tar.gz )
noextract=()
md5sums=('452c9485216026947d313d0614bcc369')

build()
{
  cd "$srcdir/$pkgname-$pkgver" || return 1
  python2 setup.py build || return 1
  # python2 setup.py test || return 1
  python2 setup.py install --root="$pkgdir" || return 1
}
