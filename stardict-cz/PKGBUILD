# Contributor: Michal Minar <mr.mini@centrum.cz>

pkgname=stardict-cz
pkgver=20100406
pkgrel=1
pkgdesc="Czech dictionary of foreign words for stardict."
arch=('any')
depends=('stardict')
url="http://slovnik-cizich-slov.abz.cz/"
license=('unknown')
md5sums=('58148e896914878be0ad689237c5ef95')



source=(http://dl.cihar.com/slovnik/stardict-czech-$pkgver.tar.gz)

build() {
	cd "$startdir/src/stardict-czech-$pkgver" || return 1
	mkdir -p $startdir/pkg/usr/share/stardict/dic/ || return 1
	install -m 644 cz.* $startdir/pkg/usr/share/stardict/dic/ || return 1
}
