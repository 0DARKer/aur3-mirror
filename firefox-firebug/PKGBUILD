# Maintainer: SpepS <dreamspepser at yahoo dot it>

_p=firebug
pkgname=firefox-$_p
pkgver=1.7.3
pkgrel=1
pkgdesc="Tools for web development. Allows inspect, edit and monitor CSS, HTML, JavaScript and Net requests in any web page."
arch=(any)
url="http://getfirebug.com/"
license=('BSD')
depends=('firefox>=5.0')
provides=("$_p")
conflicts=('firefox-extension-firebug-stable')
source=("${url}releases/$_p/${pkgver%.*}/${_p}-${pkgver}.xpi")
md5sums=('c7d7877a073a8c3a2c89f6cb833de817')

build() {
  return 0
}

package() {
  cd "$srcdir"

  # extension
  # install -d "$pkgdir/usr/lib/firefox-5.0/extensions/$(sed -n 's/.*\({.*}\).*/\1/p' install.rdf)"
  install -d "$pkgdir/usr/lib/firefox-5.0/extensions/firebug@software.joehewitt.com"
  cp -a *[^xpi] "$pkgdir/usr/lib/firefox-"*/extensions/*

  # license
  install -Dm644 license.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
