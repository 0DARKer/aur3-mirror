# Contributor: danym <dany.luc.martineau at gmail dot com>

pkgname=xscrabble-fr
pkgver=20090225
pkgrel=2
pkgdesc="French language files for xscrabble"
arch=('any')
depends=('xscrabble')
url="http://www.happypenguin.org/show?XScrabble"
license=('GPL')
source=('ftp://ftp.ac-grenoble.fr/ge/educational_games/xscrabble_fr.tar.bz2')
md5sums=('1656a136583db35169a785a68a8a8420')


build() {
mkdir -p ${pkgdir}/usr/share/{xscrabble,X11}

cd ${srcdir}/xscrabble_fr
# put the correct files in the config file and install it
  sed -i 's/usr\/share\/games\/scrabble/usr\/share\/xscrabble/' \
  	${srcdir}/xscrabble_fr/app-defaults/XScrabble_fr
install -Dm644 ${srcdir}/xscrabble_fr/app-defaults/XScrabble_fr ${pkgdir}/usr/share/X11/app-defaults/XScrabble_fr
cp -rf lib ${pkgdir}/usr/share/xscrabble/fr
}
