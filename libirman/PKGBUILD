# Maintainer:  ulceris@gmail.com

pkgname=libirman
pkgver=0.4.5
pkgrel=1
_kernver=2.6.30-ARCH
pkgdesc="Irman driver lcd library"
arch=('i686' 'x86_64')
url="http://developer.berlios.de/"
license=('GPL')
depends=()
makedepends=()

source=(http://www.lirc.org/software/snapshots/$pkgname-$pkgver.tar.gz)
md5sums=('1a1a581212ee3143845ebf7f9c6e5471')

build() {

cd "$srcdir/$pkgname-$pkgver"
        #configure	
        autoconf
	automake
        env CPPFLAGS=-I/usr/local/include LDFLAGS=-s ./configure --prefix=/usr --with-swtest
        #build	
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1

}

