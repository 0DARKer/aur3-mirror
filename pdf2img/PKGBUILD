# Maintainer: wifiextender   aaron_caffrey@hotmail.com

pkgname=pdf2img
pkgver=1.2
pkgrel=1
pkgdesc="Convert easily PDF to multiple images in various formats with a single mouse click"
url="https://github.com/wifiextender/pdf2png"
arch=('any')
license=('GPL')
depends=('python' 'ghostscript' 'python-gobject' 'python-gobject' 'pywebkitgtk')
optdepends=()
source=("http://sourceforge.net/projects/pdftoimg/files/${pkgname}-${pkgver}.tar.gz/download")
md5sums=('d6afb7e030e1dc741bd067f562aa494b')
package() {
  cd "${srcdir}/${pkgname}"
  install -Dm755 "${pkgname}.py" "${pkgdir}/usr/bin/${pkgname}"
}

