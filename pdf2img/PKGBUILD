# Maintainer: frodouser-senior      aaron_caffrey@hotmail.com

pkgname=pdf2img
pkgver=1.1
pkgrel=1
pkgdesc="Convert PDF books to PNG or JPG images with a single mouse click"
url="https://github.com/wifiextender/pdf2png"
arch=('any')
license=('GPL')
depends=('python' 'ghostscript' 'python-gobject' 'python-gobject' 'pywebkitgtk')
optdepends=()
source=("http://sourceforge.net/projects/mefiles/files/${pkgname}-${pkgver}.tar.gz/download")
md5sums=('5ca81b13c63619ca66804f70382871b0')
package() {
  cd "${srcdir}/${pkgname}"
  install -Dm755 "${pkgname}_gui.py" "${pkgdir}/usr/bin/${pkgname}"
}

