# Contributor: Egor <kontakt.zuf(at)gmail.com>
pkgname=pixilang
pkgver=3.0.alpha4.0.004
pkgrel=1
pkgdesc="Pixilang - pixel oriented programming language for small graphics/sound applications"
url="http://warmplace.ru/soft/pixilang/"
depends=('libx11' 'sdl')
makedepends=('libx11' 'sdl')
conflicts=()
arch=('i686' 'x86_64')
replaces=('pixilang')
backup=()
source=("http://www.warmplace.ru/soft/pixilang3/pixilang3.0.alpha0.004.zip")
md5sums=('15732c6e7ae3bd44e2cb4393204aab49')
license=('BSD' 'GPL')
install=('pixilang.install')

build() {
    cd $srcdir/sources/pixilang3/make
    make clean
    make || return 1

    install -D ./pixilang $pkgdir/usr/bin/pixilang
    install -d -m755 $pkgdir/usr/shared/pixilang/
    cp -dR $srcdir/examples $pkgdir/usr/shared/pixilang/
}
