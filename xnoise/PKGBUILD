# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=xnoise
pkgver=0.2.2
pkgrel=1
pkgdesc="Media player with a slick GUI, great speed and lots of features."
arch=('i686' 'x86_64')
url="http://www.xnoise-media-player.com/"
license=('GPL2')
depends=('desktop-file-utils' 'gstreamer0.10-base-plugins' 'gtk3' 'hicolor-icon-theme' 'libnotify' 'libsoup' 'sqlite' 'taglib')
makedepends=('intltool')
options=('!libtool')
source=(https://github.com/downloads/shuerhaaken/xnoise/$pkgname-$pkgver.tar.gz)
md5sums=('46ce022f1fd8e4d7766c7f4d26fcfdc2')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install

  #Remove unneeded files
  rm -rf $pkgdir/usr/include $pkgdir/usr/share/vala
}