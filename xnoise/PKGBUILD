# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=xnoise
pkgver=0.1.31
pkgrel=3
pkgdesc="Media player with a slick GUI, great speed and lots of features."
arch=('i686' 'x86_64')
url="http://www.xnoise-media-player.com/"
license='GPL2'
depends=('gstreamer0.10-base-plugins' 'gtk3' 'libnotify' 'libsoup' 'sqlite3' 'taglib')
makedepends=('intltool' 'pkg-config')
source=(https://github.com/downloads/shuerhaaken/xnoise-media-player/$pkgname-$pkgver.tar.bz2)
md5sums='5a3a9aab4ee9f9409040be737a465422'

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}