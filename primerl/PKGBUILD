package()
{
  cd "$srcdir/prime"
  mkdir -p "$pkgdir/usr/share/primerl"
  cp -r * "$pkgdir/usr/share/primerl"
  chown -R root:games "$pkgdir/usr/share/primerl/user"
  chmod -R 775 "$pkgdir/usr/share/primerl/user"
  install -D "$srcdir/launcher" "$pkgdir/usr/bin/$pkgname"
}


