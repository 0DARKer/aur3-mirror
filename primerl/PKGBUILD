pkgname=primerl
pkgver=0.17
pkgrel=1
pkgdesc="A sci-fi roguelike, based on ZAPM."
arch=('i686' 'x86_64')
url="http://primetheroguelike.galeon.com/"
license=('GPL')
depends=('ncurses' 'gcc-libs')
makedepends=()
source=(http://primetheroguelike.galeon.com/primelinux17.tgz launcher)
md5sums=('8f9da41660465e559e3753d22fc97552'
         '6c53959fc194b9c7c1aad1a6efd988b3')

