pkgname=witalian
pkgver=1.7.4
pkgrel=1
pkgdesc="Contains an alphabetic list of Italian words."
arch=('any')
url="http://packages.debian.org/sid/witalian"
license=('GPL')
source=(http://ftp.de.debian.org/debian/pool/main/w/$pkgname/${pkgname}_$pkgver.tar.gz)
md5sums=('51e695bd1299fb9fe26414545d3c3d20')

build() {
  cd $srcdir/$pkgname
  make prefix=$pkgdir/usr mandir=$pkgdir/usr/share/man install
}
