pkgname=scalastyle
pkgver=0.3.1
pkgrel=1
pkgdesc="Scalastyle examines your Scala code and indicates potential problems with it."

arch=(any)
url="http://www.scalastyle.org/"
license=("Apache")

_scalaver="2.10"
_jarname="${pkgname}-batch_${_scalaver}"
_zipname="${_jarname}-${pkgver}"

depends=("scala>=${_scalaver}")

source=("https://oss.sonatype.org/content/repositories/releases/org/${pkgname}/${_jarname}/${pkgver}/${_zipname}-distribution.zip"
        "scalastyle.sh")

md5sums=('6d179b9ff099bbec96d7e4587d68861d'
         '8632a20ed1010391dc09e0f4c154f957')

package() {
  install -d ${pkgdir}/usr/{bin,share} ${pkgdir}/usr/share/${pkgname}
  cp -r ${srcdir}/${_zipname}/* ${pkgdir}/usr/share/${pkgname}

  install -m 755 ${srcdir}/${pkgname}.sh ${pkgdir}/usr/share/${pkgname}
  ln -s ../share/${pkgname}/${pkgname}.sh ${pkgdir}/usr/bin/${pkgname}
}

# vim:set ts=2 sw=2 et:
