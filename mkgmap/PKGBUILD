# Maintainer: Arnaud Durand-Favreau <biginoz at FREE point FR>


pkgname=mkgmap
pkgver=r1815
pkgrel=1
pkgdesc="Utility for making maps for Garmin GPS devices"
arch=('any')
url="http://www.mkgmap.org.uk/index.html"
license=('GPL')
depends=('java-runtime')
source=( http://www.mkgmap.org.uk/snapshots/mkgmap-${pkgver}.tar.gz)
     
md5sums=('1245e576639bf3ba7cb26292c671aa96')

    
package() {
 cd $startdir/src/$pkgname-$pkgver
 install -D -m644 mkgmap.jar $startdir/pkg/usr/share/java/mkgmap/mkgmap.jar || return 1
 install -D -m644 doc/$pkgname.1 ${pkgdir}/usr/share/man/man1/$pkgname.1
 install -d ${pkgdir}/usr/bin
 echo "#!/bin/sh" > ${pkgdir}/usr/bin/$pkgname
 echo CLASSPATH="/usr/share/java/mkgmap/mkgmap.jar" >> ${pkgdir}/usr/bin/$pkgname
 echo java -jar \"\${CLASSPATH}\" \$@ >> ${pkgdir}/usr/bin/$pkgname
 chmod 755 ${pkgdir}/usr/bin/$pkgname
}
