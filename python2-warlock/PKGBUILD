pkgname=python2-warlock
pkgver=1.0.0
pkgrel=1
pkgdesc="Python object model built on JSON schema and JSON patch"
arch=(any)
url=https://github.com/bcwaldon/warlock
license=(unknown)
depends=(python2-jsonpatch)
makedepends=(python2-distribute)
source=(http://pypi.python.org/packages/source/w/${pkgname#*-}/${pkgname#*-}-$pkgver.tar.gz)
sha256sums=('f777fed5c5ce6da54c6f23e1aea960220e8b1b7084dca2b9a90f70c6f15d9306')
sha512sums=('a494a947e0598d24de5a5ff30f55ee800efa2ab488d14880367b8887fb443f5e80ecaf20c90e16c577e95360604510adccf50d5d4eaaa2eac735d2f028de6e12')

build() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py build
}

package() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py install --prefix=/usr --root="$pkgdir"
}
