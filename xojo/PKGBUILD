pkgname=xojo
pkgver=2013r1
pkgrel=2
pkgdesc="A RAD environment based on BASIC that compiles native applications for Windows, Mac, Linux, and the web."
arch=(i686 x86_64)
url="http://www.xojo.com"
license=("custom")
source=("http://41160df63757fc043cfd-66287f38a83954e31a54d1dbe33e0650.r4.cf2.rackcdn.com/Xojo2013r1/xojo2013r1.tgz"
"xojo.desktop")
[ $CARCH = i686 ] && depends=(gtk2 expat glib2 mesa)
[ $CARCH = x86_64 ] && depends=(lib32-gtk2 lib32-expat lib32-glib2 lib32-mesa)
md5sums=('282d7eb4fae51f45f24ba8911278585f'
         '9092b4d5b10a3f4c2aad2479319874c4')

package() {
	cd $srcdir
	mkdir -p "$pkgdir/usr/bin" "$pkgdir/opt"
	cp -r "xojo$pkgver" "$pkgdir/opt/xojo"
	ln -s "/opt/xojo/Xojo" "$pkgdir/usr/bin/Xojo"
	install -Dm644 "$srcdir/xojo.desktop" "$pkgdir/usr/share/applications/xojo.desktop"
	install -Dm644 "$pkgdir/opt/xojo/xojo.xpm" "$pkgdir/usr/share/pixmaps/xojo.xpm"
	install -Dm644 "$pkgdir/opt/xojo/Read Mes/License Agreement.txt" "$pkgdir/usr/share/licenses/xojo/License Agreement.txt"
	install -m644 "$pkgdir/opt/xojo/Read Mes/Third Party Licenses and Notices.txt" "$pkgdir/usr/share/licenses/xojo/"
}
