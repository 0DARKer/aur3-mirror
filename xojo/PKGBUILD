pkgname=xojo
pkgver=2013r1
pkgrel=1
pkgdesc="A RAD environment based on BASIC that compiles native applications for Windows, Mac, Linux, and the web."
arch=(i686 x86_64)
url="http://www.xojo.com"
license=("custom")
source=("http://41160df63757fc043cfd-66287f38a83954e31a54d1dbe33e0650.r4.cf2.rackcdn.com/Xojo2013r1/xojo2013r1.deb")
[ $CARCH = i686 ] && depends=(gtk2 expat glib2 mesa)
[ $CARCH = x86_64 ] && depends=(lib32-gtk2 lib32-expat lib32-glib2 lib32-mesa)
makedepends=(dpkg)
noextract=("xojo$pkgver.deb")
md5sums=('d6780f09acdc2f359b3a7433e5092358')

package() {
	cd $srcdir
	dpkg-deb -v -x xojo$pkgver.deb $pkgdir
	mkdir -p "$pkgdir/usr/bin"
	ln -s "/opt/xojo/xojo$pkgver/Xojo" "$pkgdir/usr/bin/Xojo"
	install -Dm644 "$pkgdir/opt/xojo/xojo$pkgver/Read Mes/License Agreement.txt" "$pkgdir/usr/share/licenses/xojo/License Agreement.txt"
	install -m644 "$pkgdir/opt/xojo/xojo$pkgver/Read Mes/Third Party Licenses and Notices.txt" "$pkgdir/usr/share/licenses/xojo/"
}
