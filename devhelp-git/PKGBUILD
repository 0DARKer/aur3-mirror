# Contributor: Yosef Or Boczko <yosefor3@walla.com>

_pkgname=devhelp
pkgname=$_pkgname-git
pkgver=20130320
pkgrel=1
pkgdesc="API documentation browser for GNOME"
arch=(i686 x86_64)
license=('GPL')
url="http://live.gnome.org/devhelp/"
depends=('gconf' 'webkitgtk3' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool' 'python3')
options=('!libtool' '!emptydirs')
conflicts=('devhelp')
replaces=('devhelp')
provides=('devhelp' 'devhelp=3.7.92')
install=devhelp.install

_gitroot=http://git.gnome.org/browse/devhelp
_gitname=devhelp

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  
  ./autogen.sh --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --with-webkit2
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="${pkgdir}" install
  rm -rf "$srcdir/$_gitname-build"
}
