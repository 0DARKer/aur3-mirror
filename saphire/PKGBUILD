# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=1.3.1
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL')
depends=('oniguruma')
source=(http://dl.sourceforge.jp/sash/51203/${pkgname}-${pkgver}.tgz
        buildfix.patch)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  patch -Np1 -i ${srcdir}/buildfix.patch

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1 lib
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 prefix=${pkgdir}/usr sysconfdir=${pkgdir}/etc lib-install install

  install -m644 CHANGELOG.txt README.{en,ja}.txt \
    ${pkgdir}/usr/share/doc/saphire/
}

md5sums=('64def89a6e9af2480be7bc3bd1a7d4e9'
         '4bf815fd0b25ebf8b818dafc094d12f4')
