# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=1.4.1
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL')
depends=('oniguruma')
source=(http://dl.sourceforge.jp/sash/51680/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('3c3730fa8dc353b2c14b5f70fe6073c9')
