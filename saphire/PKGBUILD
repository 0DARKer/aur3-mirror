# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=1.3.2
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL')
depends=('oniguruma')
source=(http://dl.sourceforge.jp/sash/51250/${pkgname}-${pkgver}.tgz
        arch.patch)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  patch -Np1 <${srcdir}/arch.patch

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} lib-install install
}

md5sums=('2ff92555c23d730c0f1f28e04e3be9f9'
         '748ec0a7c73fd16ce51a733b5703926d')
