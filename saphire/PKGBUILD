# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=3.4.2
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.wiki.fc2.com/"
license=('GPL2')
depends=('oniguruma' 'gc')
source=(http://dl.sourceforge.jp/sash/52829/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('a261ec58d5f25f52b841695de13d8d8c')
