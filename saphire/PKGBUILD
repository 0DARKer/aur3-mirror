# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=3.0.9
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('oniguruma' 'gc')
source=(http://dl.sourceforge.jp/sash/52016/${pkgname}-${pkgver}.tgz
        fix-library-path.patch)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  patch -Np0 <${srcdir}/fix-library-path.patch

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('d34364702fb89e9d646e9b47e84286cc'
         '9607128b6e374d29edfb97aab636e97e')
