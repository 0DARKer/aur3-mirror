# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=1.2.9
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL')
depends=('oniguruma' 'cmigemo')
source=(http://dl.sourceforge.jp/sash/51162/${pkgname}-${pkgver}.tgz
        buildfix.patch)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  patch -Np1 -i ${srcdir}/buildfix.patch

  ./configure --prefix=/usr --sysconfdir=/etc \
    --with-migemo --with-system-migemodir=/usr/share/migemo
  make -j1 lib
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 prefix=${pkgdir}/usr sysconfdir=${pkgdir}/etc lib-install install
}

md5sums=('4ced0cd7c2b5747839c6f555a321176b'
         '4bf815fd0b25ebf8b818dafc094d12f4')
