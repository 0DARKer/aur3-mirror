# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=1.3.5
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL')
depends=('oniguruma')
source=(http://dl.sourceforge.jp/sash/51305/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('3e6f4882a1c21ae1e31119d76f4ebf03')
