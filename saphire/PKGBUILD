# Contributor: noonov <noonov@gmail.com>

pkgname=saphire
pkgver=3.5.1
pkgrel=1
pkgdesc="A command-line shell for mfiler3"
arch=('i686' 'x86_64')
url="http://ab25cq.wiki.fc2.com/"
license=('GPL2')
depends=('oniguruma' 'gc')
source=(http://dl.sourceforge.jp/sash/53160/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('b7782906a0edc09c9c801624b9f9867a')
