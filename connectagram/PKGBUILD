# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=connectagram
pkgver=1.1.0.1
pkgrel=3
pkgdesc="A word unscrambling game"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL3')
if [ -e /usr/bin/qmake ] || [ ! -e /usr/bin/qmake-qt4 ]; then
  depends=('qt5-base')
else
  depends=('qt4')
fi
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('facc637b90137612ae2cf4c8f2db635e')
sha256sums=('e261be68763f0d5c2a9c5a40c057fc2eabcd166744bd5f78f5ef55a0b42c0b14')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  if [ -e /usr/bin/qmake ]; then
    /usr/bin/qmake PREFIX=/usr
  else
    qmake-qt4 PREFIX=/usr
  fi
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
