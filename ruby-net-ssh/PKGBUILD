# Contributor: gem2arch 0.1
pkgname=ruby-net-ssh
pkgver=2.2.1
_realname="net-ssh"
pkgrel=1
pkgdesc="Net::SSH: a pure-Ruby implementation of the SSH2 client protocol."
arch=(any)
url="http://gemcutter.org/gems/net-ssh"
license=("GPL")
depends=('ruby')
source=(http://gems.rubyforge.org/gems/net-ssh-$pkgver.gem)
noextract=(net-ssh-$pkgver.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_realname}-$pkgver.gem
}
md5sums=('36d1cd51af81d50bf5ce05a574417ce8')
