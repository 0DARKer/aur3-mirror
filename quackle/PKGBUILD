# Maintainer: Guillaume ALAUX <Guillaume at ALAUX dot net>
pkgname=quackle
pkgver=0.96
pkgrel=2
pkgdesc="Free crossword game (Scrabble-like) artificial intelligence and analysis tool"
arch=('any')
url="http://people.csail.mit.edu/jasonkb/quackle"
license=('GPL')
depends=('qt')
makedepends=('tar')
source=(http://people.csail.mit.edu/jasonkb/${pkgname}/downloads/${pkgname}-${pkgver}/${pkgname}-${pkgver}-1.i386.deb)
md5sums=('5bc4f09dba78c1f565d03053eb1bb682')

package() {
  tar xf ${srcdir}/data.tar.gz -C ${pkgdir}
  rm ${pkgdir}/.deb
  chown -R root:root ${pkgdir}/opt
}
