# Maintainer: Alois Nespor <info@aloisnespor.info>

pkgname=gnome-shell-theme-metalx
pkgver=1.0
pkgrel=1
pkgdesc="A metallic gnome-shell theme for Gnome3"
url="http://malys777.deviantart.com/art/malys-GnomeShell-RC-1-02-211159321"
license=('GPL')
arch=('any')
depends=('gnome-shell')
makedepends=('unzip')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
            'gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=(http://gnome-look.org/CONTENT/content-files/144947-gs-metalX.zip)



package() {

  unzip -o 144947-gs-metalX.zip
  mkdir -p ${pkgdir}/usr/share/themes/
  cp -R $srcdir/gs-metalX $pkgdir/usr/share/themes/
  chmod -R 755 ${pkgdir}/usr/share/themes/gs-metalX
}



sha256sums=('516741ea0d7359eebf1599ab2b7c4ac6de6f31a134bfeddf9dd8d8dbff5f2968')
