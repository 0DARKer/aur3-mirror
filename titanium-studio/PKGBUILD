# Maintainer: Shanto <shanto at hotmail>

pkgname=titanium-studio
_pkgname=Titanium\ Studio
pkgver=1.0.4
_pkgbuild=201108101535
pkgrel=1
pkgdesc="A free and open source application development platform, Titanium lets you create native mobile, tablet and desktop application experiences using existing web skills like Javascript, HTML, CSS, Python, Ruby, and PHP."
url="http://www.appcelerator.com/products/"
arch=('i686' 'x86_64')
license=('Apache')
depends=('java-environment>=6' 'gtk2>=2.20' 'libwebkit')
makedepends=('findutils')
options=(!strip)

source=(
	"http://titanium-studio.s3.amazonaws.com/latest/titanium.linux.gtk.x86_64.zip"
	"${pkgname}.desktop"
)

md5sums=(
	'c2976c63451c14cc174e221ea0db344f'
	'71ea5cc8c1eefdf2c394655add2bef42'
)

if [ "$CARCH" = "i686" ]; then
	source[0]="http://titanium-studio.s3.amazonaws.com/latest/titanium.linux.gtk.x86.zip"
	md5sums[0]='21d1391b97209a13a0514f28b4caf039'
fi

build() {
	cd "${srcdir}/${_pkgname}"
	
	install -d ${pkgdir}/usr/{bin,lib,share/{applications,pixmaps,icons/hicolor/{16x16,32x32}/apps}}
	
	ln -sf /usr/share/${pkgname}/studio3 "${pkgdir}/usr/bin/${pkgname}"
	install -m644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/"
	mv "${srcdir}/${_pkgname}" "${pkgdir}/usr/share/${pkgname}"
	
	ln -sf "/usr/share/${pkgname}/plugins/com.appcelerator.titanium.branding_1.0.4.1312164304/window1616.png" "${pkgdir}/usr/share/icons/hicolor/16x16/apps/${pkgname}.png"
	ln -sf "/usr/share/${pkgname}/plugins/com.appcelerator.titanium.branding_1.0.4.1312164304/window3232.png" "${pkgdir}/usr/share/icons/hicolor/32x32/apps/${pkgname}.png"
	ln -sf "/usr/share/${pkgname}/icon.xpm" "${pkgdir}/usr/share/pixmaps/${pkgname}.xpm"
	
	# fix readlink
	sed -i 's|/usr/bin/readlink|/bin/readlink|' ${pkgdir}/usr/share/${pkgname}/studio3
	
	# fix for python2
	find ${pkgdir} -name '*.py' -exec sed -i 's|#!/usr/bin/python|#!/usr/bin/python2|' {} \;
}