# Maintainer: wombalton <wombalton@web.de>
# created by wombalton

pkgname=xkb-eurkey
pkgver=1.1.2
pkgrel=1
pkgdesc="EurKEY is an alternative xkb keyboard layout which supports all characters used in European languages."
arch=('any')
url="http://wombalton.wo.funpic.de/eurkey.html"
license=('GPL3')
depends=('')
makedepends=('')
source=("http://wombalton.wo.funpic.de/EurKEY-1.1.2.tar.gz")
changelog="changelog"

build() {
  cd "$srcdir"

    tar xvf EurKEY-1.1.2.tar.gz
}

package() {
  cd "$srcdir"

  install -D -m 644 eurkey ${pkgdir}/usr/share/X11/xkb/symbols/eurkey

  install -D -m 644 README ${pkgdir}/usr/share/doc/eurkey/README
}

md5sums=('430c6ca9458ff3c406841035a886f9e0')
