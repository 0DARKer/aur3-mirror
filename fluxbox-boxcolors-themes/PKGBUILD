# Contributor: grimi <grimi at poczta dot fm>

pkgname=fluxbox-boxcolors-themes
pkgver=1.0c
pkgrel=1
pkgdesc="Fluxbox adaptation of the Shiki-Colors GTK theme"
arch=('any')
url="http://www.box-look.org/content/show.php/Box-Colors?content=104875"
license=('GPL')
depends=('fluxbox')
source=("http://www.saunalahti.fi/~amodinos/andreas/fluxbox/Box-Colors-1.0-w.tar.gz")
md5sums=('7142ed01b518bf03449bd54ed8a2b125')

build() {
  cd "$srcdir"
  install -d $pkgdir/usr/share/fluxbox/styles
  for i in Brave Human Illustrious Noble Wine Wise
  do
     sed 's|~/.fluxbox|/usr/share/fluxbox|' -i Box-Colors_${i}/theme.cfg
     cp -r Box-Colors_${i} $pkgdir/usr/share/fluxbox/styles
  done
}



