pkgname=opencpn
pkgver=3.2.0
pkgrel=1
pkgdesc="Open Source Chart Plotting / Marine Navigation"
arch=('i686' 'x86_64')
license=("GPL2")
depends=('wxgtk>=2.8' 'gpsd>=2.92')
makedepends=('cmake>2.8' 'gcc' 'make')
url=("http://www.opencpn.org")
source=("http://downloads.sourceforge.net/project/opencpn/opencpn/$pkgver/OpenCPN-$pkgver-Source.tar.gz")
 
build() {
    cd "${srcdir}/OpenCPN-${pkgver}-Source${_build}"
    cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr || return 1
    make || return 1
    make DESTDIR=$pkgdir install || return 1
}

md5sums=('871dda511cdc76afa476eb78a597ae9d')
