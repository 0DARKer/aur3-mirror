pkgname='perl-sys-info-base'
pkgver='0.73'
pkgrel='1'
pkgdesc="'Base class for Sys::Info'"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Sys-Info-Base'
source=('http://search.cpan.org/CPAN/authors/id/B/BU/BURAK/Sys-Info-Base-0.73.tar.gz')
md5sums=('d892a480cf9b3ab44c520f738e5f6f63')

build() {
  DIST_DIR="${srcdir}/Sys-Info-Base-0.73"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
