# Contributor: Jan Zawodny <Jan dot Zawodny at gmail dot com>
pkgname=jboss7
pkgver=7.0.0.Final
pkgrel=1
pkgdesc="JBoss Application Server by RedHat"
arch=('i686' 'x86_64')
url="http://www.jboss.org/"
license=('LGPL')
depends=('java-environment')
makedepends=('java-environment>=6')
provides=('jboss=7.0.0')
source=(http://download.jboss.org/jbossas/7.0/jboss-as-${pkgver}/jboss-as-${pkgver}.tar.gz
        jboss7.sh
        jboss7
        jboss7.install)
md5sums=('8e17a2f79ade6e12c2801e816712d8f3'
         '97166fcfc81d47e5198af01c6ef6a15b'
         '96a7cafaec996cba29d7f21705009617'
         '7187b02b491f51d2899d71460760a8fd')

package() {
  cd "${srcdir}/jboss-as-${pkgver}"
  rm -f bin/*.{bat,exe}
  install -dm755 ${pkgdir}/usr/share
  cp -R ${srcdir}/jboss-as-${pkgver} ${pkgdir}/usr/share/${pkgname}

  install -Dm755 ${srcdir}/jboss7 ${pkgdir}/etc/rc.d/jboss7
  install -Dm755 ${srcdir}/jboss7.sh ${pkgdir}/etc/profile.d/jboss7.sh
}
