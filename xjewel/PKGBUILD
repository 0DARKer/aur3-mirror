# Contributor: Ray Kohler <ataraxia937 at gmail dot com>
# Category: games

pkgname=xjewel
pkgver=1.6
pkgrel=2
pkgdesc="Falling block game like Columns on Sega"
arch=('i686' 'x86_64')
url="http://linux.maruhn.com/sec/xjewel.html"
license=('custom')
depends=('libx11')
source=(http://ftp.us.debian.org/debian/pool/main/x/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz
        license
        makefile.patch)
md5sums=('fab72e5aadeb899e32dcae2ec4da9d62'
         'ec94e3b7cc14edba9d2930bdf42ce4a2'
         '37621279f678fe885b3c6ec9fba98d89')

build () {
	cd ${srcdir}/${pkgname}-${pkgver}.orig || return 1
  patch < ${srcdir}/makefile.patch || return 1
	make || return 1
  install -D -s -g games -m 2755 xjewel ${pkgdir}/usr/bin/xjewel || return 1
  rm -f xjewel.scores || return 1
  touch xjewel.scores || return 1
  install -D -d -g games -m 775 ${pkgdir}/var/games || return 1
  install -D -g games -m 664 xjewel.scores ${pkgdir}/var/games/xjewel.scores || return 1
	install -D -m644 ${srcdir}/license ${pkgdir}/usr/share/licenses/xjewel/license || return 1
}
