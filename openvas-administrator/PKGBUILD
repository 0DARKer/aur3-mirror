# Contributor: Mike Roberts <noodlesgc@gmail.com>
pkgname=openvas-administrator
pkgver=0.9.0
pkgrel=2
pkgdesc="The OpenVAS Administrator"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
depends=('gtk2' 'openvas-libraries' 'cmake' 'doxygen')
options=('!makeflags') #disable parallel compilation on multicore CPU
source=(http://wald.intevation.org/frs/download.php/739/$pkgname-$pkgver.tar.gz)
md5sums=('e49b0d9bef0293105acb810579b721e2') 

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make || return 1
  make DESTDIR="$pkgdir/" install
}

