# Contributor: Reiser <metal@pop3.ru>
# Maintainer: Andrew Panchenko <pacnchenkoac@gmail.com>
pkgname=qmmp-svn
pkgver=2042
pkgrel=1
pkgdesc="A Qt4 based audio-player - svn version"
arch=('i686' 'x86_64')
url="http://qmmp.ylsoftware.com"
license=('GPL')
depends=('qt>=4.4' 'libmad' 'libvorbis' 'libogg' 'alsa-lib>=1.0.1' 'taglib>=1.6' 'curl>=7.16' 'flac>=1.1.3' 'libmpcdec>=1.2.6' \
'jack>=0.102.5' 'libsamplerate>=0.1.2' 'libmms' 'libmodplug>=0.8.4' 'libsndfile>=1.0.17' 'wavpack>=4.41' 'ffmpeg' 'tar' \
'unzip' 'bzip2' 'gzip' 'libbs2b>=3.0.0' )
makedepends=('subversion' 'cmake>=2.6.0')
#optdepends=('wildmidi' 'projectm>=1.2.0')
provides=('qmmp')
conflicts=('qmmp')
source=()
md5sums=()

_svntrunk=http://qmmp.googlecode.com/svn/trunk/
_svnmod=qmmp-read-only

build() {

  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  svn --force export $_svnmod $_svnmod-build
  cd $_svnmod-build/qmmp
  msg "Starting make..."

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=RELEASE

  make || return 1
}

package() {
  cd $_svnmod-build/qmmp
  make DESTDIR="${pkgdir}" install || return 1
}
