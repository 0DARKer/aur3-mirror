# Maintainer: Philipp Überbacher <murks at lavabit dot com>
pkgname=traverso-git
pkgver=20111205
pkgrel=1
pkgdesc="DAW with an innovative and fast Graphical User Interface"
arch=('i686' 'x86_64')
url="http://traverso-daw.org"
license=('GPL')
depends=('jack' 'lame' 'wavpack' 'qt' 'fftw' 'libmad' 'redland' 'raptor1')
makedepends=('git' 'cmake')
provides=('traverso')
conflicts=('traverso')
md5sums=()

_gitroot="git://git.savannah.nongnu.org/traverso.git"
_gitname="traverso"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "${srcdir}/${_gitname}-build"
#  cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"
 

  cmake .       -DCMAKE_INSTALL_PREFIX="/usr" \
                -DWANT_MP3_ENCODE=ON \
                -DWANT_DEBUG=ON \
                -DUSE_SYSTEM_SLV2_LIBRARY=OFF
}

package(){
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}" install
}
