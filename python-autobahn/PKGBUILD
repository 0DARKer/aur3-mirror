# Maintainer: veox <veox at wemakethings dot net>

pkgname=python-autobahn
_pkgname=autobahn
pkgver=0.8.9
pkgrel=1
pkgdesc='WebSocket and WAMP for Twisted and Asyncio'
url='http://autobahn.ws/python/'
arch=('any')
license=('Apache')
depends=('python>=3.4' 'python-zope-interface')
optdepends=(
	'python-twisted: Autobahn/Twisted backend'
	'python-ujson: JSON acceleration'  #wsaccel not available
	'python-msgpack: WAMPv2 binary serialization support')
makedepends=('python-distribute')
source=("https://pypi.python.org/packages/source/a/autobahn/$_pkgname-$pkgver.zip")
md5sums=('3abea1f351fe0b675ecf6979311547c6')

build() {
	cd "$srcdir/$_pkgname-$pkgver"
	python setup.py build
}

package() {
	cd "$srcdir/$_pkgname-$pkgver"
	python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 --skip-build
}