# Original maintainer: Jan de Groot <jgc@archlinux.org>
# Maintainer: Eugene Lamskoy
pkgname=fontconfig-cleartype
_real=fontconfig
pkgver=2.8.0
pkgrel=1
pkgdesc="Fontconfig with cleartype patches (to be used together with *-cleartype AUR packages)"
arch=("i686" "x86_64")
url="http://www.fontconfig.org/release/"
license=('custom')
depends=('expat>=2.0.1' 'freetype2-cleartype>=2.3.11')
options=('!libtool')
install=fontconfig.install
source=(http://www.fontconfig.org/release/${_real}-${pkgver}.tar.gz
        29-replace-bitmap-fonts.conf
        30-urw-aliases.patch
fontconfig-2.8.0-lcd.patch
fontconfig-2.7.1-latin-reorder.patch
        )
conflicts=("fontconfig")
provides=("fontconfig")

build() {
  cd "${srcdir}/${_real}-${pkgver}"
  patch -Np1 -i "${srcdir}/30-urw-aliases.patch" || return 1
  patch -Np1 -i "${srcdir}/fontconfig-2.8.0-lcd.patch" || return 1
  patch -Np1 -i "${srcdir}/fontconfig-2.7.1-latin-reorder.patch" || return 1

  # enable Position Independent Code for prelinking
  export CFLAGS="${CFLAGS} -fPIC"
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -m644 "${srcdir}/29-replace-bitmap-fonts.conf" \
      "${pkgdir}/etc/fonts/conf.avail" || return 1
  rm -f ${pkgdir}/etc/fonts/conf.d/*.conf
  #Install license
  install -m755 -d "${pkgdir}/usr/share/licenses/{$_real}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/{$_real}/" || return 1
}

md5sums=('77e15a92006ddc2adbb06f840d591c0e'
         'f6b67e8cc79197ed6abd4701911e83da'
         '51bc6cb633b50f3c28793361738aac5b'
         'afd68450bdda69a1dbad163013d2f748'
         '1161579571a7f2fb1c4990c62053e9df')
