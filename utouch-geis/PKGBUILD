pkgname=utouch-geis
pkgver=1.0.13
pkgrel=1
pkgdesc="Implementation of the GEIS (Gesture Engine Interface and Support) interface."
arch=(i686 x86_64)
url="https://launchpad.net/utouch-geis"
license=(GPL LGPL)
depends=('utouch-grail>=1.0.16')
makedepends=('utouch-grail>=1.0.16')
source=(http://launchpad.net/$pkgname/1.x/2010-10-14/+download/$pkgname-$pkgver.tar.gz)
md5sums=(6a1e0653a3909ed73fa406041f54697c)
build() {
  cd $srcdir/$pkgname-$pkgver
	PYTHON=/usr/bin/python2 ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

