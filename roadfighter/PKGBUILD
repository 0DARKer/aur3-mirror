# Contributor: Arnaud Durand-Favreau <biginoz at free point fr>
pkgname=roadfighter
pkgver=1.0.1269
pkgrel=1
pkgdesc="Konami's MSX1 classic roadfighter remake"
arch=('i686' 'x86_64')
url="http://www2.braingames.getput.com/roadf/"
license=("not_found")
depends=('sdl' 'sdl_image' 'sdl_mixer' 'sdl_sound' 'sdl_ttf' 'sdl_net' 'curl')
source=(http://braingames.jorito.net/roadfighter/downloads/roadfighter.src_1.0.1269.tgz)
md5sums=('a1626dda4d17ae30bbdd9c1ede2cd555')

build() {
cd $startdir/src/$pkgname-$pkgver/

make || return 1
make PREFIX=$startdir/pkg/usr BINDIR=$startdir/pkg/usr/share/$pkgname GAMEDIR=$startdir/pkg/usr/bin install || return 1
rm $startdir/pkg/usr/bin/$pkgname
echo "cd /usr/share/$pkgname ; ./roadfighter ; cd -" > $startdir/pkg/usr/bin/$pkgname
chmod 755 $startdir/pkg/usr/bin/$pkgname
}

