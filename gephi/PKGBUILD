# Maintainer: Andreas Krinke <andreas dot krinke at gmx dot de>
pkgname=gephi
pkgver=0.7beta
_pkgver=0.7-beta
pkgrel=1
pkgdesc="An interactive graph visualization and exploration platform"
arch=('i686' 'x86_64')
url="http://gephi.org"
license=('custom:AGPL3')
depends=('java-runtime' 'libxxf86vm')
makedepends=()
source=("http://launchpad.net/gephi/0.7/0.7beta/+download/gephi-0.7-beta.tar.gz" LICENSE gephi)
md5sums=('3ee10d06c469bc29408a136a74dabd30'
         '73f1eb20517c55bf9493b7dd6e480788'
         '5d2e557e06f36b0385e552b8282aa242')

package() {
  cd "$srcdir/$pkgname-$_pkgver"
  mkdir -p "$pkgdir/opt/$pkgname"
  cp -r * "$pkgdir/opt/$pkgname"

  mkdir -p "$pkgdir/usr/bin"
  install -m755 "$srcdir/gephi" "$pkgdir/usr/bin"

  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  install -m644 "$srcdir/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
