# Maintainer: Andreas Krinke <andreas dot krinke at gmx dot de>
pkgname=gephi
pkgver=0.8beta
pkgrel=2
pkgdesc="An interactive graph visualization and exploration platform"
arch=('i686' 'x86_64')
url="http://gephi.org"
license=('CDDL' 'GPL3')
depends=('java-runtime' 'libxxf86vm')
makedepends=()
options=(!strip)
source=("http://launchpad.net/gephi/0.8/0.8beta/+download/gephi-0.8-beta.tar.gz")
md5sums=('8e516f1ed351de69afdf8981ab737a69')

package() {
  cd "$srcdir/$pkgname"
  mkdir -p "$pkgdir/opt/$pkgname"
  cp -r * "$pkgdir/opt/$pkgname"
  chmod -R 755 "$pkgdir/opt/$pkgname"

  mkdir -p "$pkgdir/usr/bin"
  ln -s "/opt/$pkgname/bin/gephi" "$pkgdir/usr/bin"
}

# vim:set ts=2 sw=2 et:
