# Maintainer: Andreas Krinke <andreas dot krinke at gmx dot de>
pkgname=gephi
pkgver=0.8alpha
pkgrel=1
pkgdesc="An interactive graph visualization and exploration platform"
arch=('i686' 'x86_64')
url="http://gephi.org"
license=('AGPL3')
depends=('java-runtime' 'libxxf86vm')
makedepends=()
options=(!strip)
source=("http://launchpad.net/gephi/0.8/0.8alpha/+download/gephi-0.8-alpha.tar.gz")
md5sums=('d98d1244661727adc3912c4419a11398')

package() {
  cd "$srcdir/$pkgname"
  mkdir -p "$pkgdir/opt/$pkgname"
  cp -r * "$pkgdir/opt/$pkgname"
  chmod -R 755 "$pkgdir/opt/$pkgname"

  mkdir -p "$pkgdir/usr/bin"
  ln -s "/opt/$pkgname/bin/gephi" "$pkgdir/usr/bin"
}

# vim:set ts=2 sw=2 et:
