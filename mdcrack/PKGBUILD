# Contributor: ice-man <icemanf@gmail.com>
pkgname=mdcrack
pkgver=1.2
pkgrel="1" 
pkgdesc="MD4/MD5/NTLM1 hash cracker"
source=("http://c3rb3r.openwall.net/mdcrack/download/$pkgname-$pkgver.tar.gz"
	"mdcrack.patch")
url="http://c3rb3r.openwall.net/mdcrack/"
license="none"
arch=('i686')
md5sums=('53d23b73bb48a3e106b8ce748d6b2bb8' '41eacdadf88b3d69c1adf8c98b8939af')

build() {
      cd $startdir/src/$pkgname-$pkgver

      echo -e "\nPATCHING THE SOURCE\n-------------------------------"
      patch -Np1 < ../mdcrack.patch || return 1
      echo -e "\nSOURCE PATCHED!\n\n"

      make little

      mkdir -p $startdir/pkg/usr/bin
      cp bin/mdcrack $startdir/pkg/usr/bin
}
