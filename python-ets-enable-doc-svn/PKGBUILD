# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-enable-doc-svn
pkgver=25988
pkgrel=1
pkgdesc="Documentation for Enable (Enthough Tool Suite)."
arch=('any')
url="http://code.enthought.com/projects/enable"
license=('BSD')
makedepends=('subversion' 'python2' 'python-ets-setupdocs-svn')
options=(!emptydirs)

_svnmod=Enable
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py build_docs || return 1

  install -d "${pkgdir}"/usr/share/doc/enthought/"${_svnmod}"
  cp -r build/docs/html/* "${pkgdir}"/usr/share/doc/enthought/"${_svnmod}"
}

