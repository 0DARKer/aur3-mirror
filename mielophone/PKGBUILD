
pkgname=mielophone
pkgver=2.3.3
license='GPLv3'
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Napster like application for free music search and streaming. Build using Adobe AIR and Flex frameworks."
url=('http://mielophone.com/index_en.html')
source=(http://mielophone.com/Mielophone.air ${pkgname}.desktop)
depends=('bash' 'adobe-air-sdk')
makedepends=('unzip')
md5sums=('043cd3c4819a1714936a6661e8bc51db'
         'a85dadbbf5391fe836329b17ef05a98d')

build() {
  mkdir -p ${pkgdir}/opt/airapps/
  mkdir -p ${pkgdir}/usr/bin/
  cd $srcdir
  unzip Mielophone.air -d ${pkgdir}/opt/airapps/${pkgname}
  touch $pkgdir/usr/bin/${pkgname}
  echo "#!/bin/bash" >> $pkgdir/usr/bin/${pkgname}
  echo "/opt/adobe-air-sdk/bin/adl -nodebug /opt/airapps/${pkgname}/META-INF/AIR/application.xml /opt/airapps/${pkgname}/" >> $pkgdir/usr/bin/${pkgname}
  chmod +x $pkgdir/usr/bin/${pkgname}
  install -Dm644 ${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
} 
