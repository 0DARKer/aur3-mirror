# Maintainer: Allen Li <darkfeline at abagofapples.com>

pkgname=flake8-python3
pkgver=1.6
pkgrel=1
epoch=1
pkgdesc="mixes pyflake and pep8 check, with an inline deactivation feature."
arch=(any)
url="http://bitbucket.org/tarek/flake8"
license=('MIT')
depends=('python')
conflicts=('flake8')
options=(!emptydirs)
_pkgname=flake8
source=("http://pypi.python.org/packages/source/f/$_pkgname/$_pkgname-$pkgver.tar.gz")
md5sums=('cac1731216fd14c3be34f30e85dde2c3')

build() {
    cd "$srcdir/$_pkgname-$pkgver"
    python setup.py install --root=$pkgdir/ --prefix=/usr --optimize=1
}

# vim:set ts=4 sw=4 et:
