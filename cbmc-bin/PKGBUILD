# Maintainer: Johannes Schlatow <johannes.schlatow@googlemail.com>

pkgname=cbmc-bin
pkgver=4.3
pkgrel=1
pkgdesc="Bounded Model Checking for ANSI-C"
arch=('i686' 'x86_64')
url="http://www.cprover.org/cbmc/"
license=('custom')
provides=('cbmc')
if test "$CARCH" == x86_64; then
  source=("http://www.cprover.org/cbmc/download/cbmc-4-3-linux-64.tgz")
  sha256sums=('1624da71955ab0a8328ec5ea6c0812fb9f7518fbe692b262b41a0abc0cb23160')
else
  source=("http://www.cprover.org/cbmc/download/cbmc-4-3-linux-32.tgz")
  sha256sums=('8fd97f00dcb077341eb3ee0bd79b2c2bf49967c3377b9101b6ea6dde342f24c0')
fi

package() {
    install -D "${srcdir}/cbmc" "${pkgdir}/usr/bin/cbmc"
    install -D "${srcdir}/hw-cbmc" "${pkgdir}/usr/bin/hw-cbmc"
    install -D "${srcdir}/goto-cc" "${pkgdir}/usr/bin/goto-cc"
    install -D "${srcdir}/goto-instrument" "${pkgdir}/usr/bin/goto-instrument"
    install -D "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/cbmc/LICENSE"
}
