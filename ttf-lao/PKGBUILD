pkgname=ttf-lao
pkgver=0.0
pkgrel=20060226
pkgdesc="Lao TTF fonts"
arch=(any)
depends=(fontconfig xorg-font-utils)
url="https://launchpad.net/ubuntu/+source/fonts-lao/0.0.20060226-9"

sources=(
"https://launchpad.net/ubuntu/+archive/primary/+files/fonts-lao_0.0.20060226.orig.tar.xz"
)

md5sums=("bb8a06363485629281b798c8b8912ce")


package() {
  install -d "$pkgdir/usr/share/fonts/TTF"
ls "$srcdir/" -alh
wget "https://launchpad.net/ubuntu/+archive/primary/+files/fonts-lao_0.0.20060226.orig.tar.xz"
tar -xvf fonts-lao_0.0.20060226.orig.tar.xz 
install -m644 "fonts-lao-0.0.20060226/Phetsarath_OT.ttf" "$pkgdir/usr/share/fonts/TTF/"
rm fonts-lao-0.0.20060226 -fr
}
 
post_install() {
  echo -n "Updating font cache... "
  fc-cache >/dev/null -f
  mkfontscale /usr/share/fonts/TTF
  mkfontdir   /usr/share/fonts/TTF
  echo done
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}

