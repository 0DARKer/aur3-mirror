# Maintainer: Ner0

pkgname=cinnamon-applet-better-settings
pkgver=1.0.2
pkgrel=1
pkgdesc="A settings applet with additional features like Reload Theme, Force Quit, Take Screenshot etc."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/applets/view/36"
license=('GPL')
depends=('cinnamon')
optdepends=('gnome-utils: for taking screenshots')
source=('http://cinnamon-spices.linuxmint.com/uploads/applets/MDAT-EXQV-9BXF.zip')
md5sums=('6762186770ff5de396994baf8cb8c93d')

package() {
  find bettersettings\@bownz/ -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/cinnamon/applets/{}" \;
}
