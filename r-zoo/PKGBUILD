# Contributor: Nick B <Shirakawasuna at gmail _dot_com>

pkgname=r-zoo
pkgver=1.6_5
pkgrel=1
pkgdesc="An S3 class with methods for totally ordered indexed observations. For the R language."
arch=('i686' 'x86_64')
url="http://cran.r-project.org/web/packages/zoo/index.html"
license=("GPL2")
depends=('r')
source=(http://cran.r-project.org/src/contrib/zoo_${pkgver//_/-}.tar.gz)

build() {
 mkdir -p $pkgdir/usr/lib/R/library
 cd $srcdir
 R CMD INSTALL -l ../pkg/usr/lib/R/library ./zoo
}
md5sums=('f87bfc0c854e4c35b6bbd955293774b7')
