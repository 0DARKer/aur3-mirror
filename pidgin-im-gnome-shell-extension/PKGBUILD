pkgname=pidgin-im-gnome-shell-extension
pkgver=2
pkgrel=1
pkgdesc='Make Pidgin IM conversations appear in the Gnome Shell message tray'
url='https://github.com/muffinmad/pidgin-im-gnome-shell-extension'
arch=('any')
license=('GPL')
groups=('gnome')
depends=('pidgin' 'gnome-shell>=3.10')
source=('dbus.js' 'extension.js' 'metadata.json')
md5sums=(
	'bb3ed3698486313f7b9935cc8459576c'
	'2e4e3d12b1de6436514d46a6de71ca9b'
	'824d69737a92622e39e175a6e2a95bd0'
)

package() {
	cd "$srcdir"
	mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/pidgin@muffinmad"
	cp dbus.js extension.js metadata.json $pkgdir/usr/share/gnome-shell/extensions/pidgin@muffinmad/
}
