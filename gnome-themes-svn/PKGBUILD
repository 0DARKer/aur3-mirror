# Contributor: Alessio 'alexwizard' Sergi <sergi.alessio@gmail.com>

pkgname=gnome-themes-svn
_realname=gnome-themes
pkgver=1709
pkgrel=1
pkgdesc="Default themes for GNOME"
arch=('i686' 'x86_64')
url="http://svn.gnome.org/viewcvs/gnome-themes/trunk"
license=('LGPL')

groups=('gnome')
depends=('gtk-engines-svn')
provides=('gnome-themes')
conflicts=('clearlooks-gtk2' 'gnome-themes' 'gtk-thinice-engine')
replaces=('clearlooks-gtk2' 'gnome-themes' 'gtk-thinice-engine')
source=()
md5sums=()

_svntrunk="http://svn.gnome.org/svn/$_realname/trunk"
_svnmod=$_realname

build() {
  cd $startdir/src

  msg "Connecting to svn.gnome.org SVN server...."

  if [ ! -d ./$_svnmod ]; then
    svn co $_svntrunk $_svnmod -r $pkgver
  else
    (cd $_svnmod && svn up -r $pkgver)
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  [ -d ./$_svnmod-build ] && rm -rf ./$_svnmod-build
  cp -r ./$_svnmod ./$_svnmod-build
  cd ./$_svnmod-build

  ./autogen.sh && ./configure --prefix=/usr \
     --sysconfdir=/etc --localstatedir=/var || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

#  rm -rf $startdir/src/$_svnmod-build
}

# vim:set ts=2 sw=2 et:
