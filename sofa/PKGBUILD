# Contributor: Juanma Hernandez <juanmah@gmail.com>

pkgname=sofa
pkgver=0.9.23
pkgrel=1
pkgdesc="Statistics Open For All"
arch=('any')
url="http://www.sofastatistics.com/"
license=('AGPL')
depends=('python2' 'wxgtk' 'wxpython' 'pywebkitgtk' 'python-matplotlib')
makedepends=('')
provides=('sofa')
source=("http://downloads.sourceforge.net/project/sofastatistics/sofastatistics/${pkgver}/sofa_${pkgver}.orig.tar.gz")
md5sums=('80107c3e3c5d7e0ae8afde090fa743c6')

build() {

	cd $startdir/src/
	mkdir -p $startdir/pkg/usr/share
	cp -r sofa $startdir/pkg/usr/share
	cp -r sofa.main/* $startdir/pkg/usr/share/sofa
	chmod -R u=rwx $startdir/pkg/usr/share/sofa
	chmod -R go=rx $startdir/pkg/usr/share/sofa
	mkdir -p $startdir/pkg/usr/bin
	echo #! /bin/bash > $startdir/pkg/usr/bin/sofastats
	echo python2 /usr/share/sofa/start.py >> $startdir/pkg/usr/bin/sofastats
	chmod a+x $startdir/pkg/usr/bin/sofastats

}
