#Maintainer: Jarred Leonardo <jarredleonardo at googlemail dot com>

pkgname=xcursor-rediron
pkgver=1.0
pkgrel=1
pkgdesc="Rediron cursor theme."
arch=(i686 x86_64)
url="http://xfce-look.org/content/show.php/Rediron?content=106583"
license=('Artistic 2.0')
depends=()
source=("http://xfce-look.org/CONTENT/content-files/106583-Rediron.tar.gz")
md5sums=('00a9b95c362b2dc6068102c0f1f111bd')

build() {
	cd $startdir/src/Rediron
	install -d -m755 $startdir/pkg/usr/share/icons/rediron/cursors
	cd $startdir/src/Rediron/cursors
	for i in * ; do
		install -D -m644 $i $startdir/pkg/usr/share/icons/rediron/cursors
	done
}