# Contributor: Eric Pignet <eric at erixpage dot com>

pkgname=neposync
pkgver=0.3
pkgrel=1
pkgdesc="A tool to synchronize files metadata with Nepomuk or Amarok"
arch=(i686 x86_64)
license=('GPL')
url="http://wiki.github.com/ericpignet/neposync"
depends=('kdegraphics-libs' 'qt>=4.3' libmysqlclient taglib openssl)
makedepends=('git')
source=(http://github.com/downloads/ericpignet/neposync/${pkgname}-${pkgver}.tar.gz)
md5sums=('c092eac5837e4af888e70d04dd2b4c6f')

build() {
 cd "$srcdir/$pkgname"
 qmake && make || return 1
 install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname || return 1
}
