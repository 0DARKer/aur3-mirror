pkgname=q4wine-git
pkgver=20130303
pkgrel=1
pkgdesc="A Qt4 GUI for Wine"
arch=("i686" "x86_64")
url="http://sourceforge.net/projects/q4wine/"
license=("GPL3")
depends=("qt4" "wine" "sqlite3" "which" "icoutils")
makedepends=("cmake" "git")
optdepends=("winetricks" "fuseiso")
conflicts=("q4wine")
replaces=("q4wine")

_gitroot="git://github.com/brezerk/q4wine.git"
_gitname="${pkgname}"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
  
  cd "${srcdir}/${pkgname}"
  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIBS_ENTRY_PATH=/usr/lib/$pkgname
  make
}

package() {
  cd "${srcdir}/${pkgname}"
  make DESTDIR=${pkgdir} install
}
