# Maintainer: Randy Heydon <randy.heydon at clockworklab dot net>
pkgname=xdot
pkgver=0.5
pkgrel=1
pkgdesc="Interactive viewer for Graphviz dot files"
arch=(any)
url="https://github.com/jrfonseca/xdot.py"
license=('LGPL')
depends=('graphviz' 'pygtk' 'python2-distribute')
makedepends=()
source=(https://pypi.python.org/packages/source/x/xdot/xdot-0.5.tar.gz)
md5sums=('640977b37148b4030c5baec46e25b806')

build() {
  cd $srcdir/xdot-$pkgver
  python2 setup.py install --root=$pkgdir --optimize=1
}
