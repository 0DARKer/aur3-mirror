#Maintainer: Randy Heydon <randy.heydon at clockworklab dot net>
pkgname=xdot
pkgver=0.4
pkgrel=3
pkgdesc="Interactive viewer for Graphviz dot files"
arch=(any)
url="http://code.google.com/p/jrfonseca/wiki/XDot"
license=('LGPL')
depends=('graphviz' 'pygtk' 'setuptools')
makedepends=()
source=(http://pypi.python.org/packages/source/x/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('82accbfad3499e3b49259eb376668f6e')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 ./setup.py install --root=$pkgdir --optimize=1 || return 1
}
