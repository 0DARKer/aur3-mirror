# Maintainer: Randy Heydon <randy.heydon at clockworklab dot net>
pkgname=xdot
pkgver=0.6
pkgrel=1
pkgdesc="Interactive viewer for Graphviz dot files"
arch=(any)
url="https://github.com/jrfonseca/xdot.py"
license=('LGPL')
depends=('graphviz' 'pygtk' 'python2-setuptools')
makedepends=()
source=(https://pypi.python.org/packages/source/x/xdot/xdot-$pkgver.tar.gz)
md5sums=('a8e5fc5208657b03ad1bd4c46de75724')

build() {
  cd $srcdir/xdot-$pkgver
  python2 setup.py install --root=$pkgdir --optimize=1
}
