pkgname=mod_authnz_external
pkgver=3.2.5
pkgrel=2
pkgdesc="Apache External Authentication Modules"
arch=(i686 x86_64)
url="http://code.google.com/p/mod-auth-external/"
license=("Apache")
depends=('apache')
install=mod_authnz_external.install
source=(http://mod-auth-external.googlecode.com/files/$pkgname-$pkgver.tar.gz)

md5sums=('ff1e12ac8b5fc72296334865e74805e0')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make build || return 1
  install -D -m755 .libs/mod_authnz_external.so $startdir/pkg/usr/lib/httpd/modules/mod_authnz_external.so
}
