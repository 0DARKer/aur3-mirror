# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-abstract
pkgver=1.0.0
pkgrel=1
pkgdesc="Is a library which enable you to define abstract method in Ruby."
arch=(any)
url="http://rubyforge.org/projects/abstract"
license=('ruby')
depends=('ruby')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/abstract-$pkgver.gem)
noextract=(abstract-$pkgver.gem)
md5sums=('ea26d93f0a47a530631da430c9e9b7e5')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" abstract-$pkgver.gem
}
