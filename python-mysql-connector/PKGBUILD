pkgname=python-mysql-connector
_pkgname=mysql-connector-python
pkgver=1.1.4
pkgrel=1
pkgdesc="A standardized database driver for Python platforms and development"
arch=('any')
url="http://dev.mysql.com/downloads/connector/python/"
license=('GPL')
groups=()
depends=('python')
makedepends=()
