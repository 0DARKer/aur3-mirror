# Maintainer : Nicolas Pouillard <nicolas(dot)pouillard(at)gmail(dot)com>
# Contributor: Sergei Lebedev <superbobry@gmail.com>
pkgname=ocaml-fieldslib
pkgver=107.01
pkgrel=1
pkgdesc="Folding over record fields"
arch=('i686' 'x86_64')
url="http://ocaml.janestcapital.com/?q=node/13"
# LGPL + linking exception
license=('LGPL')
depends=('ocaml' 'ocaml-type-conv')
makedepends=('ocaml-findlib')
source=(http://www.janestreet.com/ocaml/${pkgname/ocaml-/}-$pkgver.tar.gz)
options=(!strip !makeflags)
md5sums=('f2ed8e1b485881405dba601ffd87112b')

build(){
  cd "$srcdir/${pkgname/ocaml-/}-${pkgver}"

  mkdir -p $pkgdir$(ocamlfind printconf destdir)
  make || return 1
}

package(){
  cd "$srcdir/${pkgname/ocaml-/}-${pkgver}"

  make OCAMLFIND_DESTDIR="$pkgdir$(ocamlfind printconf destdir)" install
  install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:
