# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=bamf
pkgver=0.2.92
pkgrel=1
pkgdesc="Removes the headache of applications matching into a simple DBus daemon and c wrapper library"
arch=('i686' 'x86_64')
url="https://launchpad.net/bamf"
license=('GPL')
depends=('glib2-ubuntu' 'dbus-glib>=0.76' 'libwnck3' 'libgtop')
makedepends=('gtk-doc')
options=(!libtool)
install=$pkgname.install
source=(http://launchpad.net/$pkgname/${pkgver%.*}/$pkgver/+download/$pkgname-$pkgver.tar.gz
        fix_unused_variable_errors.patch)
md5sums=('f2d557fa009c1a73c6dca8a84150bc92'
         '995e540cdb6bb72c1224242125a86ca1')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np0 -i "$srcdir/fix_unused_variable_errors.patch"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
