# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>
 
pkgname=bamf
pkgver=0.2.70
_majorver=(`echo $pkgver | egrep -o '[0-9]+\.[0-9]*+'`)
pkgrel=1
pkgdesc="Application Matching Framework"
arch=('i686' 'x86_64')
url="https://launchpad.net/bamf/"
license=('LGPL')
depends=('libwnck' 'libgtop' 'glib2-ubuntu')
source=("http://launchpad.net/${pkgname}/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
md5sums=(`wget ${source}/+md5 -qO - | grep tar.gz | cut -d " " -f1`)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --enable-introspection=no --sysconfdir=/etc
  make
}
 
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

