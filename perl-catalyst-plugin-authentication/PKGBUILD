options=('!emptydirs')
depends=('perl-catalyst-plugin-session>=0.10' 'perl-catalyst-runtime' 'perl-class-inspector' 'perl-mro-compat')
makedepends=('perl-moose' 'perl-test-exception')
url='http://search.cpan.org/dist/Catalyst-Plugin-Authentication'
source=('http://search.cpan.org/CPAN/authors/id/B/BO/BOBTFISH/Catalyst-Plugin-Authentication-0.10017.tar.gz')
