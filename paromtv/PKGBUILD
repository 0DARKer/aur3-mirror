# Contributor: ReNoM <renom@list.ru>
pkgname=paromtv
pkgver=20140807
pkgrel=1
pkgdesc="Client for free online TV - Parom.TV."
 
arch=("i686" "x86_64")
 
url="http://www.parom.tv/"
license=("custom")
 
depends=("vlc" "qt4")

arch=`uname -m`

case "$arch" in
	"i686")
		source=("http://ru.parom.tv/download/linux/paromplayer-i386.deb")
		sha256sums=("7900acf8c3f1907c58d55799c81e03c065096729f7fead0a2bf4e75ce509d2c7")
		;;
	"x86_64")
		source=("http://ru.parom.tv/download/linux/paromplayer-x86-64.deb")
		sha256sums=("a0119e6b1c602eb072b2b80375aface0486702e37a34d6de43081c1909004aa5")
		;;
	*)
		echo "Unsupported arch: $arch"
		exit 1
		;;
esac

build () {
	cd "$srcdir"
	tar zxvf data.tar.gz
}

package () {
	mv "$srcdir"/usr/ "$pkgdir"
}

