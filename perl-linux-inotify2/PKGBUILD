#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-linux-inotify2'
_pkgname='Linux-Inotify2'
pkgver='1.21'
pkgrel='1'
pkgdesc="scalable directory/file change notification"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-common-sense')
url='http://search.cpan.org/dist/Linux-Inotify2/'
source=(http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('4dc0b8f10916961b71866b1e5bf36db1b115f3596f453e56f59185b2880b5b80')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  [ "$skiptest" = "1" ] || make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
