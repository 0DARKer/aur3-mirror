# manjaro-x11
# Maintainer: ying <Jinoto Systems>
# Contributor: ying <Jinoto Systems>

pkgname=manjaro-x11
pkgver=0.11
pkgrel=1
pkgdesc="Xorg configuration script"
arch=("any")
url="http://manjarolinux.bplaced.net/"
license=('GPL2')
depends=('coreutils' 'bash' 'findutils' 'xorg-xrandr')
source=(http://manjarolinux.bplaced.net/src/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
cd "$srcdir/"

mkdir -p ${pkgdir}/usr/share/manjaro-x11/
mkdir -p ${pkgdir}/usr/bin
cp -fr ${srcdir}/manjaro-x11 ${pkgdir}/usr/bin/manjaro-x11
cp -fr ${srcdir}/hwdb ${pkgdir}/usr/share/manjaro-x11/hwdb
cp -fr ${srcdir}/special_configs ${pkgdir}/usr/share/manjaro-x11/special_configs
cp -fr ${srcdir}/manjaro-x11_download_pkg ${pkgdir}/usr/bin/manjaro-x11_download_pkg
}




md5sums=('3cf3b3956382f71b98c70117899fae38')
