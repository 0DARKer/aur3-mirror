# Maintainer: timttmy <marshall\\dot//cleave\\at//tiscali\\dot//co\\dot//uk>

pkgname=vattery
pkgver=0.7.3
pkgrel=1
pkgdesc="A GTK based battery monitor for the sys-tray written in Vala."
url="http://www.jezra.net/projects/vattery"
#groups=()
depends=('gtk2' 'acpi' 'librsvg')
makedepends=('gcc' 'make' 'intltool' 'pkgconfig')
license="GPL"
source=(http://launchpad.net/$pkgname/0.7/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('738bc354c3ae78e50e528c59b61cf50a')
arch=('i686' 'x86_64')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr/
	make || return 1
	make DESTDIR=$pkgdir install
}
