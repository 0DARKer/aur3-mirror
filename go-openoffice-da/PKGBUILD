pkgname=go-openoffice-da
pkgver=3.2.1
pkgrel=1
pkgdesc="Go-OpenOffice Danish language files"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://go-oo.org/discover/"
makedepends=('rpmextract')
depends=('go-openoffice>=3.2.1')
replaces=('go-oo-bin-da')

_srcurl=http://download.services.openoffice.org/files/localized/da/${pkgver}

source=(${_srcurl}/OOo_${pkgver}_Linux_x86_langpack-rpm_da.tar.gz)
md5sums=('cf0aefc78822966eb48e25a20094059d')
[ "$CARCH" = "x86_64" ] && source=(${_srcurl}/OOo_${pkgver}_Linux_x86-64_langpack-rpm_da.tar.gz)
[ "$CARCH" = "x86_64" ] && md5sums=('631f29e86ab92f361971377eeb0796d6')


build() {
	cd ${srcdir}/*native_packed*/RPMS

	# We do not want the dictionaries as these come with the go-openoffice package.
	rm *dict-da*.rpm

	for i in *.rpm
		do rpmextract.sh $i
	done

	# Install openoffice language files
	mkdir -p ${pkgdir}/usr/lib/go-openoffice
	cp -R opt/openoffice.org{,3}/* ${pkgdir}/usr/lib/go-openoffice
} 
