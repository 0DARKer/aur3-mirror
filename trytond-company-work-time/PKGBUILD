# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-company-work-time
_pkgname=trytond_company_work_time
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The company_work_time module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-company>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("407ca9eeddc54d3ef5dfd1f2d5ab2572")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}