#Maintainer: Vinzenz Vietzke <vinz@archlinux.us>
pkgname=multicut_light
pkgver=20100518
pkgrel=2
pkgdesc="A bash script for decoding and cutting OTR-keys from onlinetvrecorder.com. It uses cut lists from cutlist.at or cutlist.de"
arch=('i686' 'x86_64')
url="http://cutlist.at/tools/#t3"
license=("unknown")
depends=('bash' 'bc' 'avidemux' 'otrdecoder')
optdepends=('dialog' 'mkvmerge' 'mplayer')
source=(http://www.metashell.de/files/aur/$pkgname/multicut_light_$pkgver.sh)
md5sums=('feb08714be07580abd2e2f32ce10f617')

build() {
   cd $srcdir/
   install -D -m755 multicut_light_$pkgver.sh "$pkgdir/usr/bin/multicut_light" || return 1
}

