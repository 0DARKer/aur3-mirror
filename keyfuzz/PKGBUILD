# Contributer: N30N <archlinux@alunamation.com>

pkgname=keyfuzz
pkgver=0.2
pkgrel=1
pkgdesc="Utility for manipulating the scancode/keycode translation tables of keyboard drivers"
url="http://0pointer.de/lennart/projects/keyfuzz/"
license="GPL"
arch=('i686' 'x86_64')
depends=()
makedepends=()
source=(${url}${pkgname}-${pkgver}.tar.gz)
md5sums=("dffcc16ffd68988fafe7365f1124517d")

build() {
	cd ${srcdir}/$pkgname-$pkgver
	./configure --with-initdir=/usr/bin
	msg "Starting build process."
	make || return 1
	make DESTDIR=${pkgdir} prefix=/usr install
}
