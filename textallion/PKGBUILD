# Contributor: Stefan Husmann 
# Maintainer: Eric Forgeot < http://esclinux.tk >

pkgname=textallion
pkgver=2010_12_30
pkgrel=1
pkgdesc="A simple word processor based on txt2tags and its markup, for publishing prose, literature, poetry in html, pdf or epub"
arch=('any')
url="http://anamnese.online.fr/site2/textallion/docs/presentation.html"
license=('custom:CC-BY-SA')
makedepends=('gzip')
source=(http://textallion.googlecode.com/files/textallion_2010-12-30_dunouy.zip)
md5sums=('18d168fbc9512bb8dd66db6beab7d61d')


build() {
  cd $srcdir/${pkgname}
    	mkdir -p $pkgdir/usr/bin/
	mkdir -p $pkgdir/usr/share/${pkgname}
	cp -fr $srcdir/${pkgname}/* $pkgdir/usr/share/${pkgname}
	rm $pkgdir/usr/share/${pkgname}/textallion_install.sh


    echo "sh /usr/share/textallion/core/textallion.sh" > $pkgdir/usr/bin/textallion
    chmod +x $pkgdir/usr/bin/textallion
}
