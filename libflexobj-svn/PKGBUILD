pkgname=libflexobj-svn
pkgver=2
pkgrel=1
pkgdesc="A library can handle \"flexible objects\", that they are like JSON."
arch=('i686' 'x86_64')
url="http://code.google.com/p/libflexobj/"
license=('LGPL')
depends=()
makedepends=('gcc' 'subversion' 'cmake')
options=()
conflicts=('libflexobj')
provides=('libflexobj')
source=()
md5sums=()

_svntrunk=https://libflexobj.googlecode.com/svn/trunk/
_svnmod=libflexobj

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd libflexobj && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir libflexobj-build
	cd libflexobj-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/libflexobj
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/libflexobj-build

}
