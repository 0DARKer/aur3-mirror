# Maintainer: Erik Johnson <palehose at gmail dot com>
pkgname=mikogo
pkgver=4.1.110623
pkgrel=1
pkgdesc="Mikogo screen-sharing server"
url="http://www.mikogo.com"
arch=('i686' 'x86_64')
license=('unknown')
if [ "$CARCH" = "x86_64" ]; then
	depends=('lib32-libxtst' 'lib32-glib2' 'lib32-pcre' 'lib32-dbus-core')
else
	depends=('libxtst' 'glib2' 'pcre' 'dbus-core')
fi
options=(!strip)
source=(http://www.mikogo.com/downloads/beta/Mikogo)
md5sums=('dcce347cec9287ea05269caef625c94e')

build() {
	mkdir -p -m 0755 ${pkgdir}/usr/bin
	install -m 0755 ${srcdir}/Mikogo ${pkgdir}/usr/bin/
}
