# Maintainer: Erik Johnson <palehose at gmail dot com>
pkgname=mikogo
pkgver=4.2.110711
pkgrel=2
pkgdesc="Mikogo screen-sharing server"
url="http://www.mikogo.com"
arch=('i686' 'x86_64')
license=('unknown')
if [ "$CARCH" = "x86_64" ]; then
	depends=('lib32-glibc' 'lib32-gcc-libs' 'lib32-libxtst' 'lib32-glib2' 'lib32-pcre' 'lib32-dbus-core')
else
	depends=('glibc' 'gcc-libs' 'libxtst' 'glib2' 'pcre' 'dbus-core')
fi
options=(!strip)
source=(http://download.mikogo4.com/mikogo.tar.gz)
md5sums=('a8a5031fc705c4a5c7dce5998cf42599')

build() {
	mkdir -p -m 0755 ${pkgdir}/usr/bin
	install -m 0755 ${srcdir}/Mikogo\ 4.2/mikogo ${pkgdir}/usr/bin/
	install -m 0755 ${srcdir}/Mikogo\ 4.2/sessionplayer ${pkgdir}/usr/bin/
}
