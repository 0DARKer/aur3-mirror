# Contributor: Andreas Schrafl <aschrafl@gmail.com>
# Based on work form : Alucryd <alucryd@gmail.com>
pkgname=gnome-shell-extension-autohide-topbar
pkgver=1.0
pkgrel=2
pkgdesc="A gnome-shell extension to hide the top bar automatically"
source=('https://launchpad.net/%7Ewebupd8team/+archive/gnome3/+files/gnome-shell-extensions-autohidetopbar_0.1-1%7Ewebupd8%7Eoneiric.tar.gz')
url="http://www.fpmurphy.com/gnome-shell-extensions/"
md5sums=('837890c1a52a6749472649881c1374d1')

arch=('any')
license=('GPL2')
depends=('gnome-shell')

build() {
    cd "$srcdir/autohidetopbar2@werewolves.us/autohidetopbar2@werewolves.us"
    msg "Increase double-clicking threshold."
    sed -i 's/TIME_DELTA = 1500/TIME_DELTA = 2000/g' extension.js
ls
}

package() {
    cd "$srcdir/autohidetopbar2@werewolves.us"
    mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/"
    cp -R "autohidetopbar2@werewolves.us" "$pkgdir/usr/share/gnome-shell/extensions"
}

