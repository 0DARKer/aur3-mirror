# Maintainer: Alucryd <alucryd@gmail.com>
pkgname=gnome-shell-extension-autohide-topbar
pkgver=1.0
pkgrel=1
pkgdesc="A gnome-shell extension to hide the top bar automatically"
source=('http://www.fpmurphy.com/gnome-shell-extensions/autohidetopbar-1.0.tar.gz')
md5sums=('5a01e76d9f9fb38b363759e340ea78c0')
arch=('any')
url="http://www.fpmurphy.com/gnome-shell-extensions/"
license=('GPL2')
depends=('gnome-shell')

build() {
    cd $srcdir/autohidetopbar@fpmurphy.com
    msg "Increase double-clicking threshold."
    sed -i 's/TIME_DELTA = 1500/TIME_DELTA = 2000/g' extension.js
}

package() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/"
    cp -R "autohidetopbar@fpmurphy.com" "$pkgdir/usr/share/gnome-shell/extensions"
}

