# Maintainer: Anton Larionov <diffident dot cat at gmail dot com>

pkgname=onscripter-en
pkgver=20101010
pkgrel=2
pkgdesc="English version of the open source interpreter for the visual novel game scripting engine NScripter"
arch=('i686' 'x86_64')
url="http://onscripter.unclemion.com/"
license=('GPL')
depends=('sdl_mixer' 'sdl_image' 'sdl_ttf' 'bzip2')
# Dependency 'smpeg' provides by 'sdl_mixer'
source=(http://onscripter.unclemion.com/pub/onscr/$pkgname-$pkgver-src.tar.bz2)

md5sums=('3a9d5757aaa7a7e758c39ea7a51c3bd5')

build() {

  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make

}

package() {

  install -D -m755 "${srcdir}/${pkgname}-${pkgver}/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"

  install -dm755 "${pkgdir}/usr/share/doc/${pkgname}"
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -m644 BUGS CHANGES INSTALL README "${pkgdir}/usr/share/doc/${pkgname}"

}

# vim:set ts=2 sw=2 et:
