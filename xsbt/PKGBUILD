# Maintainer: Artyom Olshevskiy <siasiamail@gmail.com>
pkgname=xsbt
pkgver=0.9.8
pkgrel=1
pkgdesc="sbt is a simple build tool for Scala projects that aims to do the basics well"
arch=('any')
url="http://github.com/harrah/xsbt/tree/0.9"
license=('BSD')
depends=('java-runtime')
source=(sbt-launch-$pkgver.jar::http://repo.typesafe.com/typesafe/ivy-releases/org.scala-tools.sbt/sbt-launch/$pkgver/sbt-launch.jar)
noextract=(sbt-launch-$pkgver.jar)
md5sums=('a97141d320f982a19ca799461da90809')

package() {
	cd $startdir/

	mkdir -p $pkgdir/usr/bin/
  mkdir -p $pkgdir/usr/share/xsbt/
	cp $srcdir/sbt-launch-${pkgver}.jar $pkgdir/usr/share/xsbt/

	echo "#!/bin/bash" > $pkgdir/usr/bin/xsbt
  echo "java -Xmx512m -jar /usr/share/xsbt/sbt-launch-${pkgver}.jar  \"\$@\"" >> $pkgdir/usr/bin/xsbt
  chmod a+x $pkgdir/usr/bin/xsbt
}
