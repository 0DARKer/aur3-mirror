pkgname=utouch-grail
pkgver=1.0.19
pkgrel=2
pkgdesc="Gesture Recognition And Instantiation Library"
arch=(i686 x86_64)
url="https://launchpad.net/utouch-grail"
license=(GPL)
depends=('mtdev>=1.0.11' 'utouch-evemu>=1.0.3' 'utouch-frame>=1.0.0')
makedepends=('mtdev>=1.0.11' 'utouch-evemu>=1.0.3' 'utouch-frame>=1.0.0')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=(28ec77cf5ed6e3581b711c52e4a65f8b)
build() {
  cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

