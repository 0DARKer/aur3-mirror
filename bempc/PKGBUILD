# Maintainer: Zom <zom@eevul.org>

pkgname=bempc
pkgver=0.1
pkgrel=2
pkgdesc="BE::MPC is a client for MPD with some UI experiments"
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/BE::MPC?content=137091"
license=('GPL')
depends=('qt' 'libmpdclient' 'libxcb' 'libxrender' 'fontconfig' 'openssl' 'pcre' 'libxau' 'libpng' 'libxext')
makedepends=()
source=('http://qt-apps.org/CONTENT/content-files/137091-be.mpc-0.1.txz')
md5sums=('c368bbb9ed14f10e354e8f495f734451')

build() {
  cd ${srcdir}/BE.MPC

  qmake
  make
}

package() {
  cd ${srcdir}/BE.MPC

  install -d ${pkgdir}/usr/bin
  install -m0755 be.mpc ${pkgdir}/usr/bin/
}
