# Maintainer: Zom <zom@eevul.org>

pkgname=bempc
pkgver=0.8
pkgrel=1
pkgdesc="BE::MPC is a client for MPD with some UI experiments"
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/BE::MPC?content=137091"
license=('GPL')
depends=('qt' 'libmpdclient' 'libxcb' 'libxrender' 'fontconfig' 'openssl' 'pcre' 'libxau' 'libpng' 'libxext')
makedepends=()
install='bempc.install'
source=('http://qt-apps.org/CONTENT/content-files/137091-bempc-'${pkgver}.txz)
md5sums=('0d1b29570e1ef73c88e1c7647ab1aafd')

build() {
  cd ${srcdir}/bempc-${pkgver}

  qmake
  make
}

package() {
  cd ${srcdir}/bempc-${pkgver}

  sed 's/update-desktop-database//' Makefile > newmakefile
  mv newmakefile Makefile

  make INSTALL_ROOT=${pkgdir} install
}
