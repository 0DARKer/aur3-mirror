# Maintainer: Zom <zom@eevul.org>
# Contributor: Zom <zom@eevul.org>

pkgname=bempc
pkgver=0.7
pkgrel=1
pkgdesc="BE::MPC is a client for MPD with some UI experiments"
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/BE::MPC?content=137091"
license=('GPL')
depends=('qt' 'libmpdclient' 'libxcb' 'libxrender' 'fontconfig' 'openssl' 'pcre' 'libxau' 'libpng' 'libxext')
makedepends=()
source=(http://qt-apps.org/CONTENT/content-files/137091-bempc-${pkgver}.tar.xz)
md5sums=('dcb0d8f5392ef4facad56a59813c55a0')

build() {
  cd ${srcdir}/bempc-${pkgver}

  qmake
  make
}

package() {
  cd ${srcdir}/bempc-${pkgver}

  install -d ${pkgdir}/usr/bin
  install -d ${pkgdir}/usr/share/applications
  install -d ${pkgdir}/usr/share/icons/hicolor/128x128/apps/

  install -m0755 be.mpc ${pkgdir}/usr/bin/
  install -m0644 be.mpc.desktop ${pkgdir}/usr/share/applications/
  install -m0644 be.mpc.png ${pkgdir}/usr/share/icons/hicolor/128x128/apps/
}
