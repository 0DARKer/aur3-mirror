# Contributor: Maato <maato softwarebakery com>
pkgname=volumeicon
pkgver=0.3.0
pkgrel=1
pkgdesc="Volume control for your system tray."
arch=('i686' 'x86_64')
url="http://www.softwarebakery.com/maato/volumeicon.html"
license=('GPL3')
depends=('gtk2>=2.16.0' 'alsa-lib')
source=(http://www.softwarebakery.com/maato/files/volumeicon/$pkgname-$pkgver.tar.gz)
md5sums=('803f2a376f6ddcb10fb4ca979baf3ef1')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
