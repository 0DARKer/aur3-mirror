# Contributor: Denis Wernert <denis@wernert.info>
pkgname=ocaml-csv
pkgver=1.2.1
pkgrel=1
pkgdesc="OCaml CSV parsing library"
arch=('i686' 'x86_64')
url="https://forge.ocamlcore.org/projects/csv/"
license=('LGPL')
depends=('ocaml')
makedepends=('ocaml' 'ocaml-findlib')
source=(https://forge.ocamlcore.org/frs/download.php/420/csv-$pkgver.tar.gz)
md5sums=('dc3246c9b937ad620b4961813b1e44f3')
options=(!libtool !strip zipman)

OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"

build() {
  cd $srcdir/csv-$pkgver
  make || return 1
}

package() {
  cd $srcdir/csv-$pkgver
  mkdir -p $OCAMLFIND_DESTDIR
  env DESTDIR="${pkgdir}" \
  OCAMLFIND_DESTDIR="$OCAMLFIND_DESTDIR" \
  make install || return 1
}

# vim:set ts=2 sw=2 et:
