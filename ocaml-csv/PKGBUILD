# Contributor: Denis Wernert <denis@wernert.info>
pkgname=ocaml-csv
pkgver=1.1.7
pkgrel=1
pkgdesc="OCaml CSV parsing library"
arch=('i686' 'x86_64')
url="http://merjis.com/developers/csv"
license=('GPL')
depends=('ocaml')
makedepends=('ocaml' 'ocaml-findlib')
builddepends=('ocaml')
source=(http://merjis.com/_file/$pkgname-$pkgver.tar.gz)
md5sums=('3d0b5711c10b966686be1e1ee84e4aba')
options=(!libtool !strip zipman)

build() {
  cd $pkgname-${pkgver}
  make
  SITE=$pkgdir`ocamlc -where`/site-lib
  mkdir -p $SITE
  sed "s:ocamlfind install:ocamlfind install -destdir $SITE:g" -i Makefile
  make install
  if [ -f csvtool ]; then
    mkdir -p $pkgdir/usr/bin
    cp csvtool $pkgdir/usr/bin
  fi
}

# vim:set ts=2 sw=2 et:
