pkgname='perl-catalyst-plugin-static-simple'
pkgver='0.29'
pkgrel='1'
pkgdesc="Serve static content painlessly"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-catalyst-runtime>=5.80008' 'perl-mime-types>=1.25' 'perl-moose' 'perl-moosex-types' 'perl-namespace-autoclean')
url='http://search.cpan.org/dist/Catalyst-Plugin-Static-Simple'
source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSTROUT/Catalyst-Plugin-Static-Simple-0.29.tar.gz')
md5sums=('37c94e08cd227507801b0e6c41603d63')

build() {
  _DISTDIR="${srcdir}/Catalyst-Plugin-Static-Simple-0.29"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
