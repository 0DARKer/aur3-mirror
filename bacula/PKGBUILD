  backup=('etc/bacula/bacula-sd.conf')
  depends=('bacula-common')

  install -D ${_instdir}/etc/bacula/bacula-sd.conf ${pkgdir}/etc/bacula/bacula-sd.conf
  install -D ${_instdir}/usr/bin/bacula-sd ${pkgdir}/usr/bin/bacula-sd
  install -D ${_instdir}/usr/bin/bextract ${pkgdir}/usr/bin/bextract
  install -D ${_instdir}/usr/bin/bls ${pkgdir}/usr/bin/bls
  install -D ${_instdir}/usr/bin/bcopy ${pkgdir}/usr/bin/bcopy
  install -D ${_instdir}/usr/bin/bscan ${pkgdir}/usr/bin/bscan
  install -D ${_instdir}/usr/bin/btape ${pkgdir}/usr/bin/btape
  install -D ${_instdir}/usr/share/man/man8/bacula-sd.8.gz ${pkgdir}/usr/share/man/man8/bacula-sd.8.gz
  install -D ${_instdir}/usr/share/man/man8/bextract.8.gz ${pkgdir}/usr/share/man/man8/bextract.8.gz
  install -D ${_instdir}/usr/share/man/man8/bls.8.gz ${pkgdir}/usr/share/man/man8/bls.8.gz
  install -D ${_instdir}/usr/share/man/man8/bcopy.8.gz ${pkgdir}/usr/share/man/man8/bcopy.8.gz
  install -D ${_instdir}/usr/share/man/man8/bscan.8.gz ${pkgdir}/usr/share/man/man8/bscan.8.gz
  install -D ${_instdir}/usr/share/man/man8/btape.8.gz ${pkgdir}/usr/share/man/man8/btape.8.gz
  install -D ${srcdir}/bacula-sd.service ${pkgdir}/usr/lib/systemd/system/bacula-sd.service
}
