# Maintainer: Adam Nielsen <malvineous@shikadi.net>

pkgname=png++-svn
_pkgname=png++
pkgver=123
pkgrel=1
license=('custom')
pkgdesc="a C++ wrapper for libpng"
arch=('any')
url="http://savannah.nongnu.org/projects/pngpp/"
provides=("png++")
conflicts=("png++")
depends=('libpng')
source=()
md5sums=()

_svntrunk='svn://svn.sv.nongnu.org/pngpp/trunk/'
_svnmod='pngpp'

build() {
	cd "$srcdir"

	# Don't touch the SVN source if the -e option was passed in
	if [[ "$NOEXTRACT" -eq 0 ]]; then
		msg "Connecting to SVN server...."
		if [[ -d "$_svnmod/.svn" ]]; then
			(cd "$_svnmod" && svn up)
		else
			svn co "$_svntrunk" --config-dir ./ "$_svnmod"
		fi
		msg "SVN checkout done"

		rm -rf "$srcdir/$_svnmod-build"
		cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
	else
		warning "Skipping SVN update              -- using existing src/ tree"
	fi

	msg "Starting build..."
	cd "$srcdir/$_svnmod-build"
}

package() {
	cd "$srcdir/$_svnmod-build"
	make install PREFIX="${pkgdir}/usr"
	mkdir -p "${pkgdir}/usr/share/licenses/$_pkgname"
	cp -f COPYING "${pkgdir}/usr/share/licenses/$_pkgname"
}

