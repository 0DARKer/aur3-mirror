# Contributor: Michal Krenek <mikos@sg1.cz>
# Contributor: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=autoaur
pkgver=1.8
pkgrel=1
arch=('any')
pkgdesc="Automatically mass download, update, build and install AUR packages"
url="http://wiki.archlinux.org/index.php/AUTOAUR"
license=('GPL')
depends=('aurscripts' 'sudo')
optdepends=('tar: to use the tarball option' 'bzip2: to use the tarball option')
source=("$pkgname-repo.sh" "xgl.$pkgname")
md5sums=('3ada20221c59e9660341b7b1c7f5a1c5'
         '3d01d0ea1b19ac760479d30eac662447')
options=('docs')

build() {
  cd $srcdir
  install -D -m 755 autoaur-repo.sh $pkgdir/usr/bin/autoaur
  install -D -m 644 xgl.autoaur \
    $pkgdir/usr/share/doc/$pkgname/xgl.autoaur
}
