# Maintainer: Hieu Hoang <arch@zahe.me>
pkgname=python2-psutil
pkgver=0.2.0
pkgrel=1
pkgdesc="A process utilities module for Python2"
arch=(any)
url="https://code.google.com/p/psutil/"
license=('custom:New BSD')
depends=('python2')
changelog=HISTORY
source=(https://psutil.googlecode.com/files/psutil-$pkgver.tar.gz)

package() {
  cd "$srcdir/psutil-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
  install -D -m 755 LICENSE "$pkgdir/"usr/share/licenses/$pkgname/LICENSE
}

md5sums=('4731301ce7a7b856790e01f5da2fdfdd')
