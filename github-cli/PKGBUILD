# Maintainer: Sebastian Wiesner <lunaryorn googlemail com>
pkgname=github-cli
pkgver=0.3.0
pkgrel=2
pkgdesc="GitHub issue tracker client"
arch=('any')
url="http://packages.python.org/github-cli/"
license=('BSD')
depends=(python2)
makedepends=(python2-distribute)
source=("jsmits-$pkgname-$pkgver.tar.gz::https://github.com/jsmits/$pkgname/tarball/$pkgver")
md5sums=('cb634abf61de0bce2ade558b0fdf1546')

build() {
    cd "$srcdir/jsmits-$pkgname-5ff88fe"
    python2 setup.py install --root="$pkgdir" -O1 || return 1
    install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
    install -Dm644 README.rst "$pkgdir/usr/share/doc/$pkgname/README.rst"
}
