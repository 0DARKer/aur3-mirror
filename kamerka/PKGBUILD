pkgname=kamerka
pkgver=0.8.5
pkgdesc="Take photos using your webcam"
pkgrel=2
arch=(i686 x86_64)
_kdeapps=142415
url="http://kde-apps.org/content/show.php?content=${_kdeapps}"
license=(GPL)
makedepends=('cmake' 'automoc4')
depends=('kdelibs' 'qt4' 'v4l-utils')
options=()
source=(http://dosowisko.net/${pkgname}/downloads/${pkgname}-${pkgver}.tar.gz)
md5sums=('92e5a274a9818b504186ce42e7211a7c')

build(){
  cd ${srcdir}/${pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package(){
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
