# Maintainer: Jakub Vitak <mainiak [at] gmail [dot] com>
pkgname=check_multi
pkgver=0.24
pkgrel=1
pkgdesc="nagios plugin simillar to NRPE"
arch=('i686')
url="http://my-plugin.de/wiki/projects/check_multi/start"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://my-plugin.de/check_multi/${pkgname}-stable-${pkgver}.tar.gz")
noextract=()
md5sums=('2e488491f61179bd0a301fe7214fb54b')

build() {

  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make all
  #make test-all
}

package() {
  set -ex
  _exe_dest="${pkgdir}/usr/share/nagios/libexec"

  mkdir -p "${_exe_dest}"
  cd "$srcdir/$pkgname-$pkgver"
  install -m755 plugins/check_multi "${_exe_dest}/"

  set +x
}

