source=("${pkgname}-${pkgver}.tar.gz::https://github.com/oblique/${pkgname}/archive/v${pkgver}.tar.gz")
sha1sums=('badbd96afc2f8ec483ad54d4e938393c9b507ccc')

package()
{
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" PREFIX="/usr" install
}
