depends=('perl>=5.8.7' 'perl-anyevent' 'perl-json' 'perl-plack' 'perl-protocol-websocket>=0.009003' 'perl-try-tiny' 'perl-twiggy')
makedepends=()
url='http://search.cpan.org/dist/PocketIO'
source=('http://search.cpan.org/CPAN/authors/id/V/VT/VTI/PocketIO-0.00905.tar.gz')
