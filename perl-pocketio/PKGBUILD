pkgdesc="Socket.IO Plack app"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.8.7' 'perl-anyevent' 'perl-json' 'perl-protocol-socketio' 'perl-protocol-websocket>=0.009006')
makedepends=('perl-extutils-makemaker>=6.62')
url='http://search.cpan.org/dist/PocketIO'
source=('http://search.cpan.org/CPAN/authors/id/V/VT/VTI/PocketIO-0.10.tar.gz')
md5sums=('2dcfec6df5c8c79d3c0c5407c265f524')
