# Contributor: Star Brilliant <echo bTEzMjUzQGhvdG1haWwuY29tCg== | base64 -d>

pkgname=wecase-git
pkgver=20130317
pkgrel=1
pkgdesc="The Linux Sina Weibo Client"
arch=('any')
url="https://github.com/WeCase/WeCase"
license=('GPL3')
depends=('python>=3' 'pyqt>=4' 'python-notify2')
makedepends=('git')
source=('launcher.sh' 'wecase.desktop')
md5sums=('b88c2edf6e5d61a52944455673615f62' '83bdc0d830e0bac97c600487885bcf5e')

_gitroot="git://github.com/WeCase/WeCase.git"
_gitname="WeCase"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
    cd $_gitname
  fi

  git submodule init && git submodule update

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_gitname"
  mv sdk/weibo.py src/
  rm src/ui && mv ui src/
  mkdir -p "$pkgdir/usr/lib/"
  mv src "$pkgdir/usr/lib/WeCase"
  install -Dm0755 "$srcdir/launcher.sh" "$pkgdir/usr/bin/wecase"
  mkdir -p "$pkgdir/usr/share/pixmaps"
  ln -s "/usr/lib/WeCase/ui/img/WeCase 854.png" "$pkgdir/usr/share/pixmaps/WeCase.png"
  install -D "$srcdir/wecase.desktop" "$pkgdir/usr/share/applications/wecase.desktop"
}
