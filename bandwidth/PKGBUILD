# Maintainer: kfgz <kfgz at interia dot pl>

pkgname=bandwidth
pkgver=0.26c
pkgrel=1
pkgdesc="A benchmark that attempts to measure memory bandwidth"
arch=('i686' 'x86_64')
url="http://caladan.tk/"
license=('GPL')
makedepends=('nasm')
source=(http://home.comcast.net/~fbui/${pkgname}-${pkgver}.tar.bz2)
md5sums=('ea044c99bea811d162b5f2a3dcf136ce') 

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  if [ "${CARCH}" = "x86_64" ]; then 
     make bandwidth64
   else
     make bandwidth32
  fi
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  if [ "${CARCH}" = "x86_64" ]; then 
     install -Dm755 bandwidth64 ${pkgdir}/usr/bin/bandwidth
   else
     install -Dm755 bandwidth32 ${pkgdir}/usr/bin/bandwidth
  fi
}
