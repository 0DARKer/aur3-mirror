# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce4-settings-devel
pkgver=4.7.7
pkgrel=1
pkgdesc="Settings manager for XFCE (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('exo-devel' 'libnotify' 'libxklavier' 'libxfce4ui-devel')
makedepends=('intltool' 'pkgconfig' 'xfce4-dev-tools-devel' 'libwnck')
conflicts=('xfce4-settings' 'xfce4-settings-git' 'xfce-mcs-manager')
replaces=('xfce4-settings' 'xfce4-settings-git' 'xfce-mcs-manager')
source=(http://archive.xfce.org/src/xfce/xfce4-settings/4.7/xfce4-settings-${pkgver}.tar.bz2)
md5sums=('e18fb70781bc45d60b7ec9031fa3bf35')

build() {
  cd ${srcdir}/xfce4-settings-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
  	--disable-static --enable-libxklavier --enable-sound-settings \
	--enable-pluggable-dialogs --libexecdir=/usr/lib/xfce4
  make
}

package() {
	cd ${srcdir}/xfce4-settings-${pkgver}
	make DESTDIR=${pkgdir} install
}
