# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=ttx
pkgver=0.0.1
pkgrel=1
pkgdesc="Teletext-browser with support for Dutch, Belgian, Finnish and Italian teletext services"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ttx-teletext/"
license=('GPL3')
depends=('gtk3' 'hicolor-icon-theme' 'libsoup')
source=(http://ttx-teletext.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('0dc742442cdba687276d04b1144cfecf')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  make DESTDIR=$pkgdir install
}