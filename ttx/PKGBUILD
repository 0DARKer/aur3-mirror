# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=ttx
pkgver=0.0.3
pkgrel=1
pkgdesc="Teletext-browser with support for Dutch, Belgian, Austrian, German, Croatian, Portuguese, Finnish, Spanish and Italian teletext services"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ttx-teletext/"
license=('GPL3')
depends=('gtk3' 'hicolor-icon-theme' 'libsoup')
makedepends=('intltool')
install=ttx.install
source=(https://github.com/djcb/ttx/archive/$pkgver.tar.gz)
md5sums=('2e4d454eb688dd9afbe023bcb33c7384')

prepare() {
  cd $srcdir/$pkgname-$pkgver
  libtoolize --force
  aclocal
  autoheader
  automake --force-missing --add-missing
  autoconf
  intltoolize
  ./configure --prefix=/usr
}

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}