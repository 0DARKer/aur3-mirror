# Maintainer: hauzer (alokinpwn at gmail dot com)
pkgname=pfilesearch
pkgver=1.24
pkgrel=1
pkgdesc="Lets you search for files with advanced options."
arch=('any')
url="http://www.murga-linux.com/puppy/viewtopic.php?p=177950"
license=('unknown')
depends=('bash' 'gtkdialog')
makedepends=('pet2tgz')
source=("http://www.mdn.fm/files/300045_qfajp/${pkgname}-${pkgver}.pet")
noextract=("${pkgname}-${pkgver}.pet")
md5sums=('df1fcbcc3667ed47f9487c3b437d36b6')

build() {
  cd "${srcdir}"
  pet2tgz -i ../${pkgname}-${pkgver}.pet -o ../${pkgname}-${pkgver}.tar.gz
  tar -xzf ../${pkgname}-${pkgver}.tar.gz
}

package() {
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/share"
  cp -r "${srcdir}/${pkgname}-${pkgver}/usr/local/${pkgname}" "${pkgdir}/usr/share/"

cat > "${pkgdir}/usr/bin/${pkgname}" <<EOF
#!/bin/bash
"/usr/share/pfilesearch/${pkgname}" "\$@"
EOF
  chmod 755 "${pkgdir}/usr/bin/${pkgname}"
}
