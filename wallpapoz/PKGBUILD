pkgname=wallpapoz
pkgver=0.5
pkgrel=2
pkgdesc='Gnome Multi Backgrounds and Wallpapers Configuration Tool'
url="http://${pkgname}.akbarhome.com/"
license=('GPL2')
depends=('python2' 'python-imaging' 'pygtk')
optdepends=('gnome-python: Native language help documentation support')
arch=('any')
source=("http://${pkgname}.akbarhome.com/files/${pkgname}-${pkgver}.tar.bz2")
md5sums=('95231129c118034b0ae49e0960e409d9')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --installdir="${pkgdir}"
}
