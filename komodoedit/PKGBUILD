# Maintainer: max-k <max-k@post.com>
# Contributor: max-k <max-k@post.com>

if [ $(uname -m) = "x86_64" ] ; then
_arch="x86_64"
else
_arch="x86"
fi

_major="6.1.3"
_minor=8844

pkgname="komodoedit"
pkgver="${_major}_${_minor}"
pkgrel=2
pkgdesc="Open-Source version of ActiveState Komodo IDE - Based on XUL"
arch=(i686 x86_64)
url="http://www.activestate.com/komodo-edit"
license=('MPL')
depends=('glibc>=2.4' 'libjpeg>=6.2' 'gcc-libs' 'gtk2' 'xterm')
optdepends=()
conflicts=('komodoedit-nightly' 'komodoedit-beta')

source=("http://downloads.activestate.com/Komodo/releases/${_major}/Komodo-Edit-${_major}-${_minor}-linux-libcpp6-${_arch}.tar.gz")

if [ $_arch = "x86_64" ] ; then
md5sums=('02f8939ed0352460d758b5d71637f200')
else
md5sums=('45949b817819b9e4dd02b5e3070de03d')
fi

build() {
cd ${srcdir}/Komodo-Edit-${_major}-${_minor}-linux-libcpp6-${_arch}
sed -i 's/^    print/   #print\n   /g' support/_install.py
./install.sh -s -I ${pkgdir}/opt/${pkgname}
sed -i 's/Komodo\ Edit-6.desktop/Komodo\ Edit\ 6/' ${pkgdir}/opt/${pkgname}/share/desktop/komodo-edit-6.desktop
grep -v ${srcdir} ${pkgdir}/opt/${pkgname}/share/desktop/komodo-edit-6.desktop > ${srcdir}/${pkgname}.desktop
echo "Exec=/opt/${pkgname}/bin/komodo %F" >> ${srcdir}/${pkgname}.desktop
echo "Icon=/opt/${pkgname}/share/icons/komodo128.png" >> ${srcdir}/${pkgname}.desktop
install -D -m 644 ${srcdir}/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
install -d "${pkgdir}/usr/bin"
cd "${pkgdir}/usr/bin"
ln -s "../../opt/${pkgname}/bin/komodo" "komodo"
}
