# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>
pkgname=ttf-walkway
_realname=Walkway
pkgver=1
pkgrel=1.2
pkgdesc="Walkway True Type font"
arch=('any')
license=('custom:free')
url="http://www.fontsquirrel.com/fonts/Walkway"
_url="http://www.fontsquirrel.com/fonts/download/Walkway"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=ttf.install
options=(force)
source=("$_url/$_realname.zip")

md5sums=('0aa23d33307fa305135a1ced0ae9fadf')

build() {
  cd $srcdir
  install -d $pkgdir/usr/share/fonts/TTF/
  install -m644 *.ttf $startdir/pkg/usr/share/fonts/TTF/ || return 1
  install -Dm644 Freeware* $pkgdir/usr/share/licenses/$pkgname/LICENSE

}
