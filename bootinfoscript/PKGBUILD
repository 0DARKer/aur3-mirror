
# Maintainer: M0Rf30

pkgname=bootinfoscript
pkgver=0.55
pkgrel=1
pkgdesc="A bash script which searches all hard drives attached to the computer for information related to booting."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/bootinfoscript/"
license=('MIT')
depends=('bash')
source=(http://prdownloads.sourceforge.net/bootinfoscript/boot_info_script055.sh)
md5sums=('033e1d25f1839dc9fb524f15b23ea521')

build() {
  cd $srcdir
  install -D -m644 boot_info_script055.sh  $pkgdir/usr/bin/boot_info_script
  chmod +x $pkgdir/usr/bin/boot_info_script
}
