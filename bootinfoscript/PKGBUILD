
# Maintainer: M0Rf30

pkgname=bootinfoscript
pkgver=0.60
pkgrel=1
pkgdesc="A bash script which searches all hard drives attached to the computer for information related to booting."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/bootinfoscript/"
license=('MIT')
depends=('bash')
source=(http://prdownloads.sourceforge.net/bootinfoscript/boot_info_script060.zip)

build() {
  cd $srcdir
  install -D -m644 boot_info_script.sh  $pkgdir/usr/bin/boot_info_script
  chmod +x $pkgdir/usr/bin/boot_info_script
}
md5sums=('4f97f86b32c7cdd367748012e8fdcd65')
