# Maintainer: Krasimir S. Stefanov <lokiisyourmaster@gmail.com> 
# Packager: lobisquit
pkgname=viget
pkgver=0.2.5
pkgrel=1
pkgdesc='Download and convert videos from site like Youtube and Vimeo'
url=("http://download.learnfree.eu/viget/")
arch=('x86_64' 'i686')
license=('GPL')
depends=()
optdepends=()
makedepends=()
source=("http://download.learnfree.eu/viget/${pkgname}-${pkgver}-linux.tar.gz" viget.desktop viget-gui.py)
noextract=("${pkgname}-${pkgver}-linux.tar.gz")

md5sums=('020f076a842df2d20ea13bbda95ebd9e'
         '8a09f1f26a740ec65335a78957ef29bf'
         'bf3a452e43d5c3024b384823324bc7f9')

build() {
	mkdir -p "${srcdir}/${pkgname}-${pkgver}"
	cd "${srcdir}/${pkgname}-${pkgver}"
	# bsdtar -xf ${srcdir}/"${pkgname}-${pkgver}-linux.tar.gz"
	cp ${srcdir}/"${pkgname}-${pkgver}-linux.tar.gz" "${srcdir}/${pkgname}-${pkgver}"
	cp ${srcdir}/viget-gui.py viget-gui.py
	cp ${srcdir}/viget.desktop viget.desktop 
	# cp ${srcdir}/makefile makefile 
}	

package () {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p ${startdir}/pkg/opt/viget
	mkdir -p ${startdir}/pkg/usr/share/applications
	bsdtar -xf viget-0.2.5-linux.tar.gz -C ${startdir}/pkg/opt/viget
	cp viget-gui.py ${startdir}/pkg/opt/viget/viget-gui.py
	cp viget.desktop ${startdir}/pkg/usr/share/applications
}
