# Maintainer: Jonathas Rodrigues <jonathas at archlinux dot us>

pkgname=htmlcr
pkgver=0.8.1
pkgrel=1
pkgdesc="htmlcrunch speeds up your HTML pages by removing things that are ignored by browsers anyway, such as superflous blanks, line feeds and comments"
arch=('i686' 'x86_64')
url="http://www.markusstengel.de/shiny/en/i_4_1_5_1.html"
license=('GPL')
depends=('unzip')
makedepends=('gcc')
source=(http://www.markusstengel.de/various/cucxx/htmlcr/$pkgname-$pkgver-src.zip)
md5sums=('7ede46804d75ab1d8c368f1e343b3d47')

build() {
  cd $startdir/src/
  gcc htmlcr.c -o htmlcr
  cd $startdir/pkg
  mkdir -p usr/bin
  cp $startdir/src/htmlcr $startdir/pkg/usr/bin/
}

