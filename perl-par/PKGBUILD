# Maintainer:  TDY <tdy@gmx.com>
# Contributor: François Charette <firmicus ατ gmx δοτ net>

pkgname=perl-par
pkgver=1.002
pkgrel=2
pkgdesc="Perl Archive Toolkit"
arch=('any')
url="http://search.cpan.org/dist/PAR/"
license=('GPL' 'PerlArtistic')
depends=('perl-archive-zip' 'perl-par-dist')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/S/SM/SMUELLER/PAR-$pkgver.tar.gz)
md5sums=('789a0768881cd051ad7bc2b9d89a56fb')

build() {
  cd "$srcdir/PAR-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd "$srcdir/PAR-$pkgver"
  make install DESTDIR="$pkgdir"
}
