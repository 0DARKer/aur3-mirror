pkgname=vim-colorsupport
pkgver=1.0.5
_scriptid=20938
pkgrel=1
pkgdesc="Use colorschemes written for gvim in color terminals"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=2682"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)

package() {
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/vimfiles/plugin/colorsupport.vim || return 1
    install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

md5sums=('89070803208f3c156888ce6e2e3003dc'
         'efbd5986e691ce8c876fb86e8f5961ea')
sha256sums=('a1f7db6f9ff21f2924ca025ecf195d3f09e24343572cbcea0300fba5dcd3c3a1'
            '4689a6d3ed3bca186ab8fea8360f32fdbb84f84c82fb21698390202efa7b7d19')
