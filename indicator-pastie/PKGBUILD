pkgname=indicator-pastie
pkgver=0.6.7.4
pkgrel=2
pkgdesc="clipboar manager compatible with indicators."
arch=('i686' 'x86_64')
url="https://launchpad.net/~hel-sheep/+archive/pastie"
license=('GPL')
depends=('glib2' 'gtk2' 'dbus-glib' 'libxml2' 'indicator-application' 'python-appindicator' 'python-keybinder' 'python2-gnomevfs')
makedepends=()
source=(https://launchpad.net/~hel-sheep/+archive/pastie/+files/pastie_0.6.7.4~ppam2.tar.gz)
md5sums=('87ce1cb82d3d2a97a70f0747d97a33fb')

build() {
export PYTHON=python2
  cd "$srcdir"/pastie-$pkgver
  python2 setup.py build || return 1
  python2 setup.py install --root=${pkgdir} || return 1
}
