# Contributor: Jan Moeller <kowalsk84@googlemail.com>
pkgname=pdf_presenter_console
pkgver=1.1.1
pkgrel=3
pkgdesc="Presentation viewer for PDF files including Keyjnote like multi-monitor support."
arch=('i686' 'x86_64')
url="http://westhoffswelt.de/projects/pdf_presenter_console.html"
license=('GPL')
depends=('vala>=0.7.8' 'cmake>=2.6' 'gtk2' 'glib2' 'poppler-glib')
source=(http://westhoffswelt.de/data/projects/pdf_presenter_console/$pkgname-$pkgver.tar.gz pdf_image.vala.patch)
noextract=()
md5sums=('c7f2a73b0972f149f10b11519db0c461' 'd7e9c10e890893d42806d59562aecb46')

build() {
  patch -R jakobwesthoff-Pdf-Presenter-Console-3219590/src/classes/pdf_image.vala < pdf_image.vala.patch
  cd jakobwesthoff-Pdf-Presenter-Console-3219590
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="/usr/" ../ || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}


