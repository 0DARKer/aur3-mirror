#Contributor: Thomas Dziedzic

pkgname=pywps
pkgver=3.1.0
pkgrel=2
pkgdesc="Python Web Processing Service is an implementation of the WPS standard from Open Geospatial Consortium."
arch=(any)
url="http://pywps.wald.intevation.org/"
license=('GPLv2')
depends=(python-htmltmpl)
makedepends=$depends
source=(http://wald.intevation.org/frs/download.php/589/$pkgname-$pkgver.tar.gz)
md5sums=('b54de8f5cf2310201227c2734965b34a')

build() {
  cd $pkgname-$pkgver

  python setup.py install --root="$pkgdir" || return 1

  mkdir -p "$pkgdir/etc"
  install -m 644 pywps/etc/pywps.cfg "$pkgdir/etc"

  mkdir -p "$pkgdir/srv/http/cgi-bin"
  ln -s /usr/bin/wps.py "$pkgdir/srv/http/cgi-bin/wps.py"
}
