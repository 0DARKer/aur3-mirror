# Contributor: giniu <gginiu@gmail.com>
pkgname=scikits-rsformats
pkgver=1240
pkgrel=1
pkgdesc="Tools for reading remote sensing formats."
arch=('any')
url="http://scikits.appspot.com/rsformats"
license=('BSD')
depends=('python')
makedepends=('subversion' 'setuptools')
options=(!emptydirs)

_svntrunk=http://svn.scipy.org/svn/scikits/trunk/rsformats/
_svnmod=rsformats

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

