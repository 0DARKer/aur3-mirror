# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rack-cache
_gemname=${pkgname#ruby-}
pkgver=1.1
pkgrel=1
pkgdesc="HTTP Caching for Rack"
arch=('any')
url="http://tomayko.com/src/rack-cache"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-rack')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('0606345ecceeb3388c52a5a99d95d258')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
