pkgname=115upload
pkgver=1.5.6.5
pkgrel=1
pkgdesc='115.com big file upload control'
url='http://115.com'
arch=('i686' 'x86_64')
license=('unknown')
depends=()

if [ "$CARCH" = "i686" ]; then
	source=('http://115.com/static/install/115upload_v1.5.6.5_x86.tar.gz')
	md5sums=('57877ea243ee45b111e6c9d28920629c')
elif [ "$CARCH" = "x86_64" ]; then
	source=('http://115.com/static/install/115upload_v1.5.6.5_x64.tar.gz')
	md5sums=('32ad80ed8dec3f4dda0fd2bc2ff1c4c5')
fi

build(){
	cd ${srcdir}
	if [ "$CARCH" = "i686" ]; then
		install -D -m644 ${srcdir}/115upload.so ${pkgdir}/usr/lib/mozilla/plugins/115upload.so
	elif [ "$CARCH" = "x86_64" ]; then
		install -D -m644 ${srcdir}/115upload.so ${pkgdir}/usr/lib/mozilla/plugins/115upload.so
	fi
}
