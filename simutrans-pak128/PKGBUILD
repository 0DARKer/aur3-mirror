# Maintainer: JD Steffen <jd at steffennet dot org>

pkgname=simutrans-pak128
_pkgname=simutrans
pkgver=102.2.2
pkgrel=1
pkgdesc="A high resolution graphics set for Simutrans"
arch=('any')
depends=('simutrans-pak64')
url="http://www.simutrans.com/"
license=('PerlArtistic')
source=(http://downloads.sourceforge.net/project/$_pkgname/pak128/pak128%20for%20102-2-2/pak128-1.4.6--102.2.zip)
md5sums=('a7fa4d635ad44a7dfa6e29dc1408cdc4')

build() {
  cd "$srcdir"/$_pkgname

  # install data
  install -m755 -d "$pkgdir"/usr/share/$_pkgname
  cp -rf ./* "$pkgdir"/usr/share/$_pkgname/

  # set permissions
  find "$pkgdir"/usr/share/$_pkgname -type d -exec chmod 755 {} +
  find "$pkgdir"/usr/share/$_pkgname -type f -exec chmod 644 {} +
}
