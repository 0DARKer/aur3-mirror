# Contributor: Ross Melin <rdmelin@gmail.com>
pkgname=libfaketime
pkgver=0.8
pkgrel=1
pkgdesc="FakeTime Preload Library reports faked dates and times to programs"
arch=(i686)
url="http://www.code-wizards.com/projects/libfaketime/"
license=('GPL')
groups=()
depends=()
makedepends=(gcc)
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://www.code-wizards.com/projects/libfaketime/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('c83e12a80ca85486bc904905d325d01e')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make || return 1
  mkdir -p $pkgdir/usr/lib/faketime 
  install libfaketime.so.1 libfaketimeMT.so.1 $pkgdir/usr/lib/faketime
  mkdir -p $pkgdir/usr/bin
  install faketime $pkgdir/usr/bin 
  mkdir -p $pkgdir/usr/share/man/man1
  install -m 644 faketime.1 $pkgdir/usr/share/man/man1/
  mkdir -p $pkgdir/usr/share/doc/faketime
  install -m 644 Changelog README $pkgdir/usr/share/doc/faketime/

}

# vim:set ts=2 sw=2 et:
