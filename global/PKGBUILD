# Maintainer: Lucas De Marchi <lucas.de.marchi@gmail.com>
# Contributor: Matthias Meulien orontee@gmail.com

pkgname=global
pkgver=6.0
pkgrel=1
pkgdesc="A source code tag system"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/global/"
license=('GPL')
depends=()
optdepends=('idutils' 'perl>=4')
source=(http://tamacom.com/global/$pkgname-$pkgver.tar.gz global.install)
md5sums=('5a6439f1fee02d8df3b1ed83049c294e'
	'ae826a113498b46aa15aefadeabfd568')
install=global.install

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

check() {
	cd "$srcdir/$pkgname-$pkgver"
	make -k check
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}

