# Maintainer: Luiz Augusto S. Carvalho <lgusto at gmail dot com>
pkgname=yapan
pkgver=0.2
pkgrel=1
pkgdesc="Yet Another Package mAnager Notifier for Arch Linux."
arch=('i686' 'x86_64')
url="https://bitbucket.org/otsug/yapan/wiki/Home"
license=('GPL')
depends=('qt' 'phonon' 'sudo')
source=(https://bitbucket.org/otsug/$pkgname/downloads/$pkgname-$pkgver.tar.bz2)
sha256sums=('aa0719e79275c4c652beb6b553538c3c4f5cb76a1b311a9f4eaa63ad0af57906')

build() {
  cd "$srcdir/$pkgname-$pkgver/"
  qmake || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make INSTALL_ROOT="$pkgdir" install || return 1
}
