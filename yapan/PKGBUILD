# Maintainer: Luiz Augusto S. Carvalho <lgusto at gmail dot com>
pkgname=yapan
pkgver=0.3.1
pkgrel=1
pkgdesc="Yet Another Package mAnager Notifier."
arch=('i686' 'x86_64')
url="https://bitbucket.org/otsug/yapan/wiki/Home"
license=('GPL')
depends=('qt' 'phonon' 'sudo' 'pacman')
source=(https://bitbucket.org/otsug/$pkgname/downloads/$pkgname-$pkgver.tar.bz2)
sha256sums=('ee4bcd2605088bd660fc43f3751e00a6c7abaf100e23432f9dc2b6e6291e5bb5')

build() {
  cd "$srcdir/$pkgname-$pkgver/"
  qmake || return 1
  lupdate -noobsolete -silent yapan.pro || return 1
  lrelease -silent yapan.pro || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make INSTALL_ROOT="$pkgdir" install || return 1
}
