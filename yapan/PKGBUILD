# Maintainer: Luiz Augusto S. Carvalho <lgusto at gmail dot com>
pkgname=yapan
pkgver=0.4
pkgrel=1
pkgdesc="Yet Another Package mAnager Notifier."
arch=('i686' 'x86_64')
url="https://bitbucket.org/otsug/yapan/wiki/Home"
license=('GPL')
depends=('qt' 'phonon' 'sudo')
optdepends=('libnotify: to use notify-send.')
source=(https://bitbucket.org/otsug/$pkgname/downloads/$pkgname-$pkgver.tar.bz2)
sha256sums=('d953921b83ed0c8ecd23812b23c5619854e89f2ae8e96481b87e9356538501f2')

build() {
  cd "$srcdir/$pkgname-$pkgver/"
  lupdate -noobsolete -silent yapan.pro
  lrelease -silent yapan.pro
  qmake
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make INSTALL_ROOT="$pkgdir" install
}
