pkgname=crossfire-client-svn
pkgver=12391
pkgrel=2
pkgdesc="A free and open source cross platform MMORPG."
url="http://crossfire.real-time.com/"
arch=('i686' x86_64)
license=('GPL2')
depends=('libx11' 'sdl' 'gtk' 'alsa-lib' 'sdl_image' 'gtk2' 'freeglut')
source=()

build(){
  cd $startdir/src/
  svn co https://crossfire.svn.sourceforge.net/svnroot/crossfire/client
  cd client/trunk
  automake --add-missing
  autoreconf
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}

