# Maintainer: David McIlwraith <archaios at archaios dot net>
# Contributor: Peter Feigl <peter.feigl at gmail dot com>
pkgname=crossfire-client-svn
pkgver=15310
pkgrel=1
pkgdesc="A free and open source cross platform MMORPG."
url="http://crossfire.real-time.com/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('libx11' 'sdl' 'alsa-lib' 'gtk2' 'lua' 'libgl' 'libglade' 'curl' 'subversion' 'autoconf' 'automake' 'libtool')
conflicts=('crossfire-client')
source=()

build(){
  cd $startdir/src/
  svn co -r$pkgver https://crossfire.svn.sourceforge.net/svnroot/crossfire/client
  cd client/trunk
  aclocal
  automake --add-missing
  autoreconf
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
