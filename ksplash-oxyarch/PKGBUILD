pkgname=ksplash-oxyarch
pkgver=1.0
pkgrel=2
pkgdesc="Arch Linux KSplash Theme"
arch=('i686' 'x86_64')
license=('GPL')
url="http://kde-look.org/content/show.php/OxyArch+Splash+Screen?content=98805"
depends=('kdebase')
md5sums=('a6e2adbd9d4a2344aaa1091801574706')
source=(ksplash-oxyarch-1.0.tar.gz)

build()
{
 cd $startdir/src
 tar -xvf $startdir/ksplash-oxyarch-$pkgver.tar.gz

 mkdir -p $startdir/pkg/usr/share/apps/ksplash/Themes/
 cp -R OxyArch $startdir/pkg/usr/share/apps/ksplash/Themes
}
