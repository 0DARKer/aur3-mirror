pkgname='qsolocards'
pkgver='0.99.1'
pkgrel='2'
pkgdesc='A free collection of solitaire card games written using Qt'
arch='any'

url='http://sourceforge.net/projects/qsolocards/'
license='GPL3'

depends=('qt')

source=(http://downloads.sourceforge.net/project/qsolocards/qsolocards/${pkgver}/QSoloCards-${pkgver}-src.tar.gz
        qsolocards.desktop)

md5sums=(3a6a1d2f488b68986b822b3fd6961140
         5ac16b0777aff74df0720c4c491f96e6)

function build ()
{
    cd ${srcdir}/QSoloCards-${pkgver} || return 1
    qmake || return 1
    make || return 1
    
    mkdir -p ${pkgdir}/usr/share/qsolocards || return 1
    install -m 0644 images/sol128x128.png ${pkgdir}/usr/share/qsolocards || return 1
    
    mkdir -p ${pkgdir}/usr/share/applications || return 1
    install ../qsolocards.desktop ${pkgdir}/usr/share/applications || return 1
    
    mkdir -p ${pkgdir}/usr/bin || return 1
    install QSoloCards ${pkgdir}/usr/bin/qsolocards || return 1
}
