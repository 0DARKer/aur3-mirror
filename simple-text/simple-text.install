all_off="$(tput sgr0)"
bold="${all_off}$(tput bold)"
blue="${bold}$(tput setaf 4)"
yellow="${bold}$(tput setaf 3)"

note() {
    printf "${blue}==>${yellow} NOTE:${bold} $1${all_off}\n"
}

post_install() {
	glib-compile-schemas /opt/simple-text/data
}

post_upgrade() {
	post_install $1
}

post_remove() {
	post_install $1
}