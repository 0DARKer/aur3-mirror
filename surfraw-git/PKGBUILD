# Contributor: Andrew Kopplin <revrollic@gmail.com>
pkgname=surfraw-git
pkgver=20100312
pkgrel=1
pkgdesc="A fast unix command line interface to a variety of popular WWW search engines."
arch=('i686' 'x86_64')
url="http://surfraw.alioth.debian.org/"
license=('custom')
depends=()
makedepends=('git')
provides=('surfraw')
conflicts=('surfraw')
replaces=()
install="surfraw-git.install"
source=()
md5sums=()

_gitroot="git://git.debian.org/surfraw/surfraw.git"
_gitname="surfraw"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  #./autogen.sh
  ./prebuild || return 1
  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install
  install -D -m644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
} 
