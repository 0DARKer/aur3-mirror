# Maintainer: Jerome Rose <jrose.pub@gmail.com>


pkgname=stackless
pkgver=313
pkgrel=1
pkgdesc="Stackless Python"
arch=('i686' 'x86_64')
url="http://www.stackless.com"
depends=('bzip2' 'expat' 'gdbm' 'libffi' 'openssl' 'zlib')
optdepents=('tk: for tkinter')
confilcts=('python')
provides=('python=3.1.3')
license=('python')
source="http://www.stackless.com/binaries/stackless-$pkgver-export.tar.bz2"
md5sums=('b1b71a63f229d40d17458e288f4fb142')

build() {
	cd "$srcdir/python-3.1.3-stackless"
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/python-3.1.3-stackless"
	make DESTDIR="$pkgdir/" install
	ln -s $pkgdir/usr/bin/python3 $pkgdir/usr/bin/python
}
