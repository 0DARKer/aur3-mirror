pkgname=openid4java
pkgver=0.9.5.593
pkgrel=1
pkgdesc="OpenID 2.0 Java Libraries" 
arch=('i686' 'x86_64')
url="http://code.google.com/p/openid4java/"
license=('Apache 2')
depends=('java-runtime')
source=(http://openid4java.googlecode.com/files/$pkgname-$pkgver.tar.gz)
sha1sums=('7e7a5252a490842395e25771f6c3e8ce79a85ce7')


build() {
  mkdir -p $pkgdir/usr/share/java/$pkgname 
  cp -a $srcdir/$pkgname-$pkgver/* $pkgdir/usr/share/java/$pkgname/
}
