# Contributer: Thomas Krug <phragment@lavabit.com>

pkgname=fprintd-git
pkgver=20111102
pkgrel=2
pkgdesc="fprintd is a D-Bus daemon that offers libfprint functionality over the D-Bus interprocess communication bus."
url="http://www.freedesktop.org/wiki/Software/fprint/fprintd"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libfprint-git' 'polkit' 'dbus-glib')
makedepends=('git' 'gtk-doc' 'intltool')
options=('!libtool')

_gitroot="git://anongit.freedesktop.org/libfprint/fprintd"
_gitname="fprintd"

build() {
	cd ${srcdir}
	msg "Connecting to GIT server...."

	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
	cd ${srcdir}/$_gitname-build


	./autogen.sh

	./configure --prefix=/usr \
              --sysconfdir=/etc \
              --libexecdir=/usr/bin \
              --libdir=/lib

	make
}

package() {
  cd "$srcdir/$_gitname-build"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
