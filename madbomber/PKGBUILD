# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=madbomber
pkgver=0.2.5
pkgrel=2
pkgdesc="A clone of the classic Atari 2600 game Kaboom."
arch=('i686')
url="http://www.newbreedsoftware.com/madbomber/"
license=('GPL')
depends=('sdl_image' 'sdl_mixer' 'alsa-lib')
source=(ftp://ftp.billsgames.com/unix/x/$pkgname/src/$pkgname-$pkgver.tar.gz)
md5sums=('90772baaec90a10f6d9467bc4d3963a6')

build() {
	cd $startdir/src/$pkgname-$pkgver
	make DATA_PREFIX=/usr/share/madbomber/ BIN_PREFIX=/usr/bin/ || return 1
	mkdir -p $pkgdir/usr/bin/
	make DATA_PREFIX=$pkgdir/usr/share/madbomber/ BIN_PREFIX=$pkgdir/usr/bin/ install || return 1
	install -D -m644 $startdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
	
