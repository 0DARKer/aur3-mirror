# $Id: PKGBUILD, 2010/07/21$
# Maintainer: Daniel Stumpner <bigstumpi@gmx.de>
# Contributor: Daniel Stumpner <bigstumpi@gmx.de>
pkgname=llcon
pkgver=3.1.1
pkgrel=1
pkgdesc="Low-Latency (Internet) Connection tool for real-time jam sessions"
arch=(i686)
url="http://sourceforge.net/projects/llcon/"
license=('GPL2')
depends=('qt>=4.0.0 jack')
optdepends=()
makedepends=()
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz)

md5sums=('f5b77da6c9f56dfc0d9309f4c995b47b')

build() {
	cd $startdir/src/$pkgname-$pkgver
	
	./configure  --prefix /usr
	make 
	make DESTDIR="${pkgdir}" install || return 1
}
