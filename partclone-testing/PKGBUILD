pkgname=partclone-testing
_pkgname=partclone
pkgver=0.2.21
pkgrel=1
pkgdesc="Backup and restore a partition for numerous file-systems types (testing version)"
arch=('i686' 'x86_64')
url="http://partclone.org/"
license=('GPL')
depends=('e2fsprogs' 'progsreiserfs' 'ntfsprogs' 'dosfstools' 'ncurses' 'btrfs-progs-unstable')
makedepends=('gcc' 'ncurses' 'pkgconfig')
conflicts=('partclone-svn' 'partclone')
source=("http://sourceforge.net/projects/partclone/files/testing/src/${_pkgname}-${pkgver}.tar.gz")
md5sums=('7ab3b48ffb499bd54148cea790a389aa')

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}
	./configure --prefix=/usr --enable-extfs --enable-reiserfs --enable-hfsp --enable-fat --enable-ntfs --enable-btrfs --enable-ncursesw
	make || return 1
	make DESTDIR="$pkgdir/" install
}
