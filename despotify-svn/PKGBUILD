# Contributor: Alexander Rødseth <rodseth@gmail.com>
pkgname=despotify-svn
pkgver=508
pkgrel=2
pkgdesc="An open source client for Spotify"
arch=('i686' 'x86_64')
url="http://despotify.sourceforge.net/"
license=('GPL2')
depends=('libvorbis' 'openssl' 'libao')
makedepends=('subversion' 'libao' 'ncurses' 'libtool' 'expat' 'setconf')
conflicts=('despotify-pulse-svn' 'despotify-ao-svn')
_svntrunk=https://despotify.svn.sourceforge.net/svnroot/despotify
_svnmod=despotify

build() {
  cd "$srcdir"
  if [ -d "$_svnmod/.svn" ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi
  msg "SVN checkout done or server timeout"

  cd "$_svnmod/src"

  # quick patch, adding format.matrix = NULL; to libao.c
  setconf clients/despotify/libao.c format.byte_format "AO_FMT_LITTLE; format.matrix = NULL;"

  msg "Building..."
  make || return 1

  # The installer fails to make these directories
  mkdir -p "$pkgdir/usr/include"
  mkdir -p "$pkgdir/usr/bin"

  # Install to the pkgdir
  make INSTALL_PREFIX="$pkgdir/usr" DESTDIR="$pkgdir/" install

  # /usr/bin/simple conflicts with libftdi
  #mv $pkgdir/usr/bin/simple $pkgdir/usr/bin/despotify_simple

  # Shouldn't be executable, fixing
  chmod -x "$pkgdir/usr/include/despotify.h"
}
# vim:set ts=2 sw=2 et:
