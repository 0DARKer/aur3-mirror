#Mantainer: M0Rf30
pkgname=cmc-git
pkgver=20120524
pkgrel=1
pkgdesc="Cyanogenmod Compiler"
arch=('i686' 'x86_64')
url="https://github.com/lithid/Cmc-pygtk"
license=('GPL3')
depends=('pygtk' 'python-notify')
makedepends=('git')

_gitroot="git://github.com/lithid/Cmcompiler.git"
_gitname="cmc"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone -l "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  mkdir -p $pkgdir/usr/share/cmcompiler/
  mkdir -p $pkgdir/usr/bin/

  cp -r src/* $pkgdir/usr/share/cmcompiler
  mv $pkgdir/usr/share/cmcompiler/cmcompiler $pkgdir/usr/bin/

# Generate bytecode and some fixes
  cd $pkgdir
  find . -type f -exec sed -i s/python/python2/g {} +
  sed -i 's|import appindicator|#import appindicator|g' $pkgdir/usr/share/cmcompiler/prog/vars.py
  sed -i 's|if i == 256|if i == 254|g' $pkgdir/usr/share/cmcompiler/prog/cmcompiler.py
  python2 -m compileall .
  rm -rf "$srcdir/$_gitname-build"
} 

