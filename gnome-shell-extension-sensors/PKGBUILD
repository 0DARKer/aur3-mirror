pkgname=gnome-shell-extension-sensors
pkgver=20130423
pkgrel=1
pkgdesc="Gnome Shell extension for displaying CPU temperature, hard disk temperature, voltage and CPU fan RPM in GNOME Shell"
arch=('any')
url="https://github.com/xtranophilist/gnome-shell-extension-sensors.git"
license=('GPL')
depends=('gnome-shell' 'lm_sensors')

_gitroot="https://github.com/xtranophilist/gnome-shell-extension-sensors.git"
_gitname="gnome-shell-extension-sensors"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi
  msg "GIT checkout done or server timeout"

  cd "$srcdir/$_gitname"

  mkdir -p $pkgdir/usr/share/gnome-shell/extensions/temperature@xtranophilist
  cp -r * $pkgdir/usr/share/gnome-shell/extensions/temperature@xtranophilist || return 1
  glib-compile-schemas $pkgdir/usr/share/gnome-shell/extensions/temperature@xtranophilist/schemas
}