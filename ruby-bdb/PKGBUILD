pkgname=ruby-bdb
rubyname=bdb
pkgver=0.6.5
pkgrel=1
pkgdesc="Sleepycat Berkeley DB and DB XML"
arch=('i686' 'x86_64')
url="http://raa.ruby-lang.org/project/bdb"
license=("Ruby")
depends=( 'ruby' 'db' )
conflicts=()
replaces=()
backup=()
install=
source=("http://ftp.riken.go.jp/pub/FreeBSD/distfiles/ruby/bdb-0.6.5.tar.gz")
md5sums=('a6b1b04eede935f1de5327e365e350fa')

build() {
  cd $startdir/src/$rubyname-$pkgver
  ruby extconf.rb --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
