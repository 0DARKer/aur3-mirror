# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-envisagecore-doc
pkgver=3.2.0
_githubtag=eccc2a6
pkgrel=1
pkgdesc="Documentation for EnvisageCore"
arch=('any')
url="https://github.com/enthought/envisagecore"
license=('BSD')
makedepends=('python2-distribute' 'python2-setupdocs')
conflicts=('python2-envisagecore-doc-git' 'python-ets-envisagecore-doc-svn')
options=(!emptydirs)

source=("https://github.com/enthought/envisagecore/tarball/${pkgver}")
md5sums=('43a8220ba85b2c86860f70ca7a4837e8')

build() {
  cd "$srcdir/enthought-envisagecore-${_githubtag}"

  python2 setup.py build_docs || return 1
}

package() {
  cd "$srcdir/enthought-envisagecore-${_githubtag}"

  install -d "${pkgdir}"/usr/share/doc/enthought/envisagecore
  cp -r build/docs/html/* "${pkgdir}"/usr/share/doc/enthought/envisagecore
}

