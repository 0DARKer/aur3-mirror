pkgname=mc-new
_pkgname=mc
pkgver=4.7.5
_pkgver=4.7.5
pkgrel=1
pkgdesc="GNU Midnight Commander is a s-lang based file manager"
url="http://midnight-commander.org/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('glib2' 'slang' 'perl')
makedepends=('pkgconfig')
conflicts=('mc' 'mc-git' 'mc-cvs' 'mc-fork-svn' 'mc-mp' 'mc-slavz' 'mc-suse')
provides=('mc')
source=(http://www.midnight-commander.org/downloads/${_pkgname}-${_pkgver}.tar.bz2)
sha256sums=('0d2b4e87b8a4158edf54380df9402b4a1a19f7494ef06dd0a0a3e3ff6a2b50f1')

build() {
    cd ${srcdir}/${_pkgname}-${_pkgver}

    ./configure                     \
        --prefix=/usr               \
        --sysconfdir=/etc           \
        --libexecdir=/usr/lib       \
        --enable-background         \
        --enable-network            \
        --enable-netcode            \
        --enable-charset            \
        --enable-nls                \
        --with-vfs                  \
        --with-edit                 \
        --with-screen=slang         \
        --without-x                 \
        --without-samba             \
        --without-gpm-mouse         \
        --without-gnome             \
        --without-debug             \
        --without-included-gettext  \
        --disable-dependency-tracking

    make || return 1
    make DESTDIR=${pkgdir} install || return 1
}
