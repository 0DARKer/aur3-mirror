# Contributor: twa022 <twa022 at gmail dot com>

pkgname=ewebkit-svn
pkgver=77544
pkgrel=2
pkgdesc="WebKit ported to the Enlightenment Foundation Libraries"
arch=('i686' 'x86_64')
url="http://trac.webkit.org/wiki/EFLWebKit"
license=('LGPL2')
depends=('cairo' 'edje-svn' 'ecore-svn' 'eina-svn' 'evas-svn'
         'gstreamer0.10' 'libpng' 'libjpeg' 'libsoup' 'gperf'
         'gtk2' 'icu' 'libxslt' 'sqlite3' 'libxt')
makedepends=('cmake' 'subversion')
source=()

_svntrunk=http://svn.webkit.org/repository/webkit/trunk
_svnmod=WebKit
_buildir=${_svnmod}-build

build() {
	cd ${srcdir}

	msg 'Connecting to SVN server...'

	if [ -d ${_svnmod} ]; then
		cd ${_svnmod}
		svn up -r ${pkgver}
		cd ..
	else
		svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
	fi

	msg 'SVN checkout finished.'

	if [ -d ${_buildir} ]; then
		msg 'Cleaning previous build...'
		rm -rf ${_buildir}
	fi
	
	mkdir ${_buildir}
	cd ${_buildir}/Source

	msg 'Starting make...'
	
	cmake ${srcdir}/${_svnmod}/Source -DPORT=Efl -DSHARED_CORE=OFF -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr || return 1
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
}
