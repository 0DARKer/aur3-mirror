# Contributor: Kessia 'even' Pinheiro <kessiapinheiro at gmail.com>
pkgname=pymetar
pkgver=0.14
pkgrel=1
pkgdesc="downloads the weather report for a given station ID, decodes it and the provides easy access to all the data found in the report"
arch=('i686' 'x86_64')
url="http://www.schwarzvogel.de/software-pymetar.shtml"
license=('GPL2')
depends=('python' )
source=("http://www.schwarzvogel.de/pkgs/$pkgname-$pkgver.tar.gz")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python setup.py build || return 1
  install -m0755 -d ${pkgdir}/usr/{bin,lib/python2.6/site-packages,share/${pkgname}} || return 1
  chmod 0755 ${pkgdir}/usr/bin/ 
  install -m0644 -D PKG-INFO ${pkgdir}/usr/lib/python2.6/site-packages/${pkgname}-${pkgver}-py2.6.egg-info
  install -m0644 -D build/lib/pymetar.py ${pkgdir}/usr/lib/python2.6/site-packages/
  install -m0755 -D build/scripts-2.6/weather.py ${pkgdir}/usr/bin/
  install -m0644 -D README librarydoc.txt ${pkgdir}/usr/share/${pkgname}
}

# vim:set ts=2 sw=2 et:
md5sums=('024fb0b46c0cb8cf21d63c68d2014796')
