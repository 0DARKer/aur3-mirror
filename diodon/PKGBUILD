# Maintainer: jose <jose1711 [at] gmail (dot) com>

pkgname=diodon
arch=('i686')
pkgver=0.2.0
pkgrel=1
pkgdesc="GTK+ clipboard manager"
license=('GPL')
url="https://launchpad.net/diodon"
depends=('python-appindicator' 'gconf' 'libgee')
source=("http://launchpad.net/diodon/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
md5sums=('147e0f4b2631c25cfaf1e1b9af473d8a')

build() {
cd $srcdir/${pkgname}-${pkgver}
sed -i '1s/python/python2/' waf
./waf configure
sed -i 's/\<local\>\///g' _build_/config.h
sed -i 's/\<local\>\///g' _build_/debug/config.h
./waf build
}

package() {
cd $srcdir/${pkgname}-${pkgver}
install -D -m644 data/preferences.ui $pkgdir/usr/share/diodon/preferences.ui
install -D -m755 _build_/src/diodon $pkgdir/usr/bin/diodon
install -D -m644 _build_/data/diodon.desktop $pkgdir/usr/share/applications/diodon.desktop
}
