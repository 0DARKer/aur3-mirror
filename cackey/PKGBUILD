pkgname=cackey
pkgver=0.5.15
pkgrel=2
pkgdesc="A PKCS11 smart card middleware replacement for coolkey which works with recent DoD CACs."
arch=('i686' 'x86_64')
url="https://software.forge.mil/sf/frs/do/listReleases/projects.community_cac/frs.cackey"
license=('custom')
groups=()
depends=('pcsclite' 'ccid')
makedepends=()
optdepends=()
provides=('coolkey')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://software.forge.mil/sf/frs/do/downloadFile/projects.community_cac/frs.cackey.0_5_15/frs2371?dl=1)
noextract=()
md5sums=('43beb6e6ca64d9b912dee97b5742b0dc') 

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr 
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
