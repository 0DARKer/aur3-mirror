# Contributor: solsTiCe d'Hiver <solstice.dhiver@gmail.com>

pkgname=jubler
pkgver=4.0
pkgrel=2
pkgdesc="Subtitle editor for SUB and SRT files"
url="http://www.jubler.org"
license=("GPL")
depends=('java-runtime' 'mplayer' 'aspell')
makedepends=('java-environment' 'apache-ant')
arch=('i686' 'x86_64')
source=(http://mesh.dl.sourceforge.net/sourceforge/jubler/Jubler-fullsrc-$pkgver.tar.bz2)
md5sums=('de4c51cd1982850ab1961429aac2691d')

build() {
    cd $srcdir/Jubler-$pkgver
    ant jar
    ant linuxffdecode
    DESTDIR=$pkgdir ant linuxinstall

    # do we need this ?
    rm -rf $pkgdir/usr/share/menu
}

# vim: set ts=4 sw=4 et:
