
pkgname=clonezilla
pkgver=2.3.58
pkgrel=1
pkgdesc="The Free and Open Source Software for Disk Imaging and Cloning"
arch=('i686' 'x86_64')
url="http://clonezilla.org/"
license=('GPL')
depends=('partclone' 'ntfsprogs' 'coreutils' 'partimage' 'drbl')
install=$pkgname.install
source=(http://free.nchc.org.tw/drbl-core/src/stable/$pkgname-$pkgver.tar.bz2)

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install  
  install -m755 -d $pkgdir/usr/bin
  touch $pkgdir/usr/bin/clonezilla
  echo "#!/bin/sh" > $pkgdir/usr/bin/clonezilla
  echo "/opt/drbl/sbin/clonezilla" >> $pkgdir/usr/bin/clonezilla
  chmod 0755 $pkgdir/usr/bin/clonezilla
  chmod +x $pkgdir/usr/bin/clonezilla
}

md5sums=('37b8e7563607c4e43050fd3b598f6672')
