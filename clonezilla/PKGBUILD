
pkgname=clonezilla
pkgver=3.0.2
pkgrel=1
pkgdesc="The Free and Open Source Software for Disk Imaging and Cloning"
arch=('i686' 'x86_64')
url="http://clonezilla.org/"
license=('GPL')
depends=('partclone' 'ntfsprogs' 'coreutils' 'partimage' 'drbl' 'pigz' 'sshfs')
source=(http://free.nchc.org.tw/drbl-core/src/unstable/$pkgname-$pkgver.tar.bz2)

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install  
}

md5sums=('0adea49badbe8cf17493fd4d46cbe064')
