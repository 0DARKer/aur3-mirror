
pkgname=clonezilla
_clonezillarel=27
pkgver=2.3.8
pkgrel=1
pkgdesc="The Free and Open Source Software for Disk Imaging and Cloning"
arch=('i686' 'x86_64')
url="http://clonezilla.org/"
license=('GPL')
depends=('partclone' 'ntfsprogs' 'coreutils' 'partimage' 'drbl')
install=$pkgname.install
source=(http://free.nchc.org.tw/drbl-core/src/stable/$pkgname-$pkgver-$_clonezillarel.tar.bz2)

package() {
  cd $srcdir/$pkgname-$pkgver-$_clonezillarel
  make DESTDIR=$pkgdir install  
  install -m755 -d $pkgdir/sbin
  ln -s $pkgdir/opt/drbl/sbin/clonezilla $pkgdir/sbin
  
}

md5sums=('b3bbc45e5f5f3f93cb356377270276a2')
