# Contributor: ganymede

pkgname=ekd
pkgver=20100530
pkgrel=3
pkgdesc="Pictures and video post-production software"
arch=('i686' 'x86_64')
url="http://ekd.tuxfamily.org/"
license=('GPL')
depends=('mplayer' 'ffmpeg2theora' 'imagemagick' 'python2-qt' 'pil' 'python-numpy' 'mjpegtools' 'sox')
source=(http://download.tuxfamily.org/ekdforum/ekd/appli/linux/sources/ekd_linux_source_2_0-1_$pkgver.tar.gz)
md5sums=('1b01bccfbdd1858937d4bc9acf46f295')

build() {
  install -d $pkgdir/usr/bin/ $pkgdir/usr/share/ekd
  echo '#!/bin/sh'$'\n''cd /usr/share/ekd && python2 ekd_gui.py' \
    > $pkgdir/usr/bin/ekd
  chmod 755 $pkgdir/usr/bin/ekd
  cp -r ekd_linux_source_2_0-1_$pkgver/* $pkgdir/usr/share/ekd
  chmod -R 755 $pkgdir/usr/share/ekd
}
