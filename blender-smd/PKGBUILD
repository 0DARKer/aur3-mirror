pkgname=blender-smd
pkgver=1.8.2
pkgrel=1
pkgdesc="Source engine import/export for Blender"
arch=(any)
url="https://developer.valvesoftware.com/wiki/Blender_SMD_Tools"
license=("GPL v2")
source=("https://blender-smd.googlecode.com/files/io_smd_tools-$pkgver.zip")
depends=(blender)
makedepends=(dos2unix python)
md5sums=('192c01bc08c303f8d4288f8b65606621')

build() {
	cd $srcdir
	find . -type f -exec dos2unix {} \;
}
package() {
	cd $srcdir
	find . -name '*.py' -exec install -Dm755 {} "$pkgdir/usr/share/blender/2.67/scripts/addons/"{} \;
	python -m compileall "$pkgdir/usr/share/blender"
}
