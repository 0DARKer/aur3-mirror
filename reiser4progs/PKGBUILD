# Contributor: Orivej Desh <smpuj@bk.ru>

pkgname=reiser4progs
pkgver=1.0.7
pkgrel=3
pkgdesc="Reiser4 filesystem programs"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/reiser4/"
license=('GPL2')
depends=('e2fsprogs' 'libaal' 'readline')
options=('!libtool')
source=("http://sourceforge.net/projects/reiser4/files/reiser4-utils/$pkgname/$pkgname-$pkgver.tar.gz"
        "reiser4progs-fsck-handle-unprepped-cluster.patch")
md5sums=('79d1fd482d127c6045500836ee3abdb1'
         '77f3b41aa724369d8e2c0fde877f5ea6')

build() {
  cd $srcdir/$pkgname-$pkgver

  patch -Np1 -i ../reiser4progs-fsck-handle-unprepped-cluster.patch

  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  make DESTDIR=$pkgdir install
}