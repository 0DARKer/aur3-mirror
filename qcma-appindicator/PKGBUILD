# Maintainer: codestation <codestation404@gmail.com>

pkgname=qcma-appindicator
_pkgname=qcma
pkgver=0.3.6
pkgrel=1
pkgdesc="Content Manager Assistant for the PS Vita (AppIndicator)"
arch=("i686" "x86_64")
url="https://github.com/codestation/qcma"
license=('GPL')
depends=('qcma' 'libappindicator-gtk2')

source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/codestation/${pkgname}/archive/v${pkgver}.tar.gz")
install=qcma-appindicator.install
md5sums=('9a8994dab63355065577187ef51aa979')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  # temporal patch to install icons in the correct path
  sed -i '/INCLUDEPATH/a DATADIR = $$PREFIX/share' qcma_appindicator.pro

  qmake-qt4 qcma_appindicator.pro PREFIX="/usr"
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}" install
}
