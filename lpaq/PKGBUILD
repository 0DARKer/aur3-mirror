pkgname=lpaq
pkgver=8
pkgrel=0
pkgdesc="LPAQ is a "lite" version of PAQ, faster but with less compression. It is a single file compressor, not an archiver"
url="http://www.cs.fit.edu/~mmahoney/compression/#lpaq"
makedepends=('nasm' 'gcc')
arch=('x86_64' 'i686')
license=('GPL')
source=(http://www.cs.fit.edu/~mmahoney/compression/$pkgname$pkgver.zip)
md5sums=('16349656a2d3802bc0ccde5a2fa5bb9d')
install=${pkgname}.install
build()
{
  cd $startdir/src
  g++ -Wall lpaq8.cpp $CFLAGS -o ${pkgname}${pkgver} || 1
  g++ -Wall lpaq8.cpp $CFLAGS -DWIKI -o ${pkgname}${pkgver}e || 1
  install -D -m 755 $startdir/src/${pkgname}${pkgver} ${startdir}/pkg/usr/bin/${pkgname}${pkgver}
  install -D -m 755 $startdir/src/${pkgname}${pkgver}e ${startdir}/pkg/usr/bin/${pkgname}${pkgver}e
}
