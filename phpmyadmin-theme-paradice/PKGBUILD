# Maintainer: Your Name <youremail@domain.com>
pkgname=phpmyadmin-theme-paradice
pkgver=3.0b
pkgrel=1
pkgdesc="phpMyAdmin theme based on the original theme and the nuvola iconset"
arch=(any)
url="http://www.phpmyadmin.net/home_page/themes.php"
license=('GPL')
depends=(phpmyadmin)
source=(http://downloads.sourceforge.net/phpmyadmin/paradice-$pkgver.zip)
md5sums=(896331a8d8bb01577ee361ce055556f9)

package() {
  cd "$srcdir"

  install -d -m0755 "$pkgdir/usr/share/webapps/phpMyAdmin/themes"
  chmod -R 755 paradice
  find paradice -type f -exec chmod a-x {} \;
  cp -a paradice "$pkgdir/usr/share/webapps/phpMyAdmin/themes"
}

