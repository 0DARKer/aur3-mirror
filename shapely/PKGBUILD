# Contributor: Joseph Xu <josephzxu@gmail.com>
pkgname=shapely
pkgver=1.2a6
pkgrel=1
pkgdesc="A package for creation, manipulation, and analysis of planar geometries"
arch=('i686' 'x86_64')
url='http://trac.gispython.org/lab/wiki/Shapely'
license=('custom')
depends=('python>=2.5' 'geos')
makedepends=('gcc')
source=("http://gispython.org/dist/Shapely-$pkgver.tar.gz")
md5sums=('bfd8114b7bc20eda27ca5ec7e611ad63')

build() {
	cd $srcdir/Shapely-$pkgver
	python setup.py install --root=$pkgdir
	mkdir -p $pkgdir/usr/share/licenses/shapely
	cp LICENSE.txt $pkgdir/usr/share/licenses/shapely/LICENSE
	
	# don't want to install these demos
	rm -rf $pkgdir/usr/bin
}
