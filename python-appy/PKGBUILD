# Contributer: Richard Murri <admin@richardmurri.com>

pkgname=python-appy
pkgver=0.6.7
pkgrel=1
pkgdesc="a bunch of tools for developing python applications"
arch=(any)
url="http://appyframework.org"
license=('GPL')
depends=('python2')
source=(http://launchpad.net/appy/0.6/$pkgver/+download/appy$pkgver.zip)

build() {
  cd "$srcdir"

  mkdir -p $pkgdir/usr/lib/python2.7/site-packages/
  cp -r appy $pkgdir/usr/lib/python2.7/site-packages/
}



md5sums=('a920e569ab24b8711609eb0eef720700')
