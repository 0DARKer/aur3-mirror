# Maintainer: Zhengyu Xu <xzy3186@gmail.com>

pkgname=insync-caja
pkgver=1.1.3
pkgrel=1
pkgdesc="Caja integration for insync"
url="https://support.insynchq.com/forums/discussion/3429/new-insync-version-1-1-3"
license=('custom:insync')
options=(!strip)
arch=('any')

depends=("insync" "python2-caja")
source=("${pkgname}-${pkgver}.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}.32034-precise_all.deb")
sha256sums=("6197c398405bd796e21d2cb5e6ff2724ac3796822c5f4ec4dbc8cddf78f16322")
noextract=("${pkgname}-${pkgver}.deb")

package() {
   cd $srcdir
   ar x ${pkgname}-${pkgver}.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir
}
