# Contributor: mariusz - myswiat <my.swiat@o2.pl>

pkgbase=pango
pkgname=${pkgbase}-git
_realver=1.32.5
pkgver=20130120
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('i686' 'x86_64')
url="http://gnome.org/"
license=('LGPL')
depends=('glib2-git' 'cairo-git' 'libxft' 'libthai' 'freetype2'
  'harfbuzz-git' 'fontconfig-git')
makedepends=('gobject-introspection' 'libxt' 'gtk-doc')
options=('!libtool' '!emptydirs')
provides=("${pkgbase}=${_realver}")
conflicts=("${pkgbase}")
install=${pkgbase}.install
source=()
md5sums=()

_gitroot="http://git.gnome.org/browse/pango"
_gitname="pango"

build() {
  cd $srcdir
  msg "Connecting to git.gnome.org GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull
    msg "The local files are updated."
  else
    git clone $_gitroot
    cd $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  msg "Starting build"
  ./autogen.sh --prefix=/usr --sysconfdir=/etc \
    --localstatedir=/var --with-included-modules=basic-fc
  make
  make DESTDIR=$pkgdir install
  install -m755 -d "${pkgdir}/etc/pango"
}
