# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman
# Contributor: Jozef Riha <jose1711 at gmail dot com>

pkgname=perl-file-path
_cpanname=File-Path
pkgver=2.08
pkgrel=1
pkgdesc="File path and name utilities"
arch=('any')
url="http://search.cpan.org/~DLAND/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/D/DL/DLAND/${_cpanname}-${pkgver}.tar.gz) 
md5sums=('9126d1a5c0499d8c128f13be25679e0b')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$pkgdir || return 1
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
