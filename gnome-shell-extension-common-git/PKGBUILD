# Maintainer: Sebastian Lenz <sebastian@archusers.de>
pkgname=gnome-shell-extension-common-git
pkgver=20110728
pkgrel=1
pkgdesc="Common files for the Gnome-Shell Extensions"
arch=('i686' 'x86_64')
url="http://live.gnome.org/GnomeShell/Extensions"
license=('GPL' 'LGPL')
makedepends=('git' 'gnome-common' 'intltool')
conflicts=('gnome-shell-extensions-git')
provides=('gnome-shell-extensions-common')
install=('gnome-shell-extension-common.install')
source=('gnome-shell-extension-common.install')
md5sums=('9386f03b52f50c1bd5e21e266b7c2cad')
_gitroot="git://git.gnome.org/gnome-shell-extensions"
_gitname="gnome-shell-extensions"

build() {
	cd "$srcdir"
	msg "Connecting to GIT server...."

	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot --depth=1
    
		cd $_gitname
		git branch -f gnome-3-0 origin/gnome-3-0
		git checkout gnome-3-0
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	cd ${srcdir}/${_gitname}
	./autogen.sh --prefix=/usr --enable-extensions=""
}
package() {
	cd ${srcdir}/${_gitname}
	make DESTDIR=${pkgdir} install
}

