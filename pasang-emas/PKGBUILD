# Contributor: Larry Hajali <larryhaja [at] gmail [dot] com>

pkgname=pasang-emas
pkgver=3.0.0
pkgrel=1
pkgdesc="Pasang-emas is a traditional two-player board game of Brunei."
arch=('i686' 'x86_64')
url="http://pasang-emas.sourceforge.net/index.xhtml"
license=('GPL3')
depends=('gtk2')
makedepends=('gettext' 'intltool' 'gnome-doc-utils')
install=pasang-emas.install
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.bz2
	http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-themes/1.0/${pkgname}-themes-1.0.tar.bz2
        http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-themes/1.0/pet-marble.tar.bz2)
md5sums=('e88a00ee2de18d78a5ce2f9b97d30eb0'
         'b0cc4af9ec0f3b0a7b74ecfc13ce9399'
	 '925f78cc8fb25f3bb8ca5f5ba9d3ae64')

build()
{
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
  make install DESTDIR="${pkgdir}" || return 1

  # Install themes.
  cd ../${pkgname}-themes-1.0
    ./configure --prefix=/usr || return 1
    make install DESTDIR="${pkgdir}" || return 1
  cd ..
  cp -ar marble "${pkgdir}"/usr/share/${pkgname}/themes || return 1
}
