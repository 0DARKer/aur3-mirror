# Maintainer: Stefan Karner <stefan.karner@student.tuwien.ac.at>

pkgname=libdcp
pkgver=0.96.0
pkgrel=1
pkgdesc="A small C++ library which can create and read Digital Cinema Packages using JPEG2000 and WAV files"
arch=('i686' 'x86_64')
url="http://carlh.net/software/libdcp"
license=('GPL')
groups=
depends=('openssl' 'libxml++>=2.6' 'xmlsec' 'openjpeg' 'libcxml>=0.08' 'libsigc++>=2.0' 'boost-libs>=1.45')
makedepends=('python2' 'boost>=1.45')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=
install=
source=(.AURINFO
        "${pkgname}.tar.gz::http://carlh.net/software/${pkgname}/${pkgname}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf configure --prefix=/usr
  python2 waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf install --destdir=$pkgdir
}
md5sums=(SKIP
         '8e8e30d2c7e76973fa8cb9ce8fbc6f71')
