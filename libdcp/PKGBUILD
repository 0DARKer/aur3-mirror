# Contributor: Stefan Karner <stefan.karner@student.tuwien.ac.at>

pkgname=libdcp
pkgver=0.101.0
pkgrel=1
pkgdesc="A small C++ library which can create and read Digital Cinema Packages using JPEG2000 and WAV files"
arch=('i686' 'x86_64')
url="http://carlh.net/software/libdcp"
license=('GPL')
groups=
depends=('openssl' 'libxml++>=2.6' 'xmlsec' 'openjpeg' 'libcxml>=0.11.0' 'libsigc++>=2.0' 'boost-libs>=1.45')
makedepends=('python2' 'boost>=1.45')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(.AURINFO
        "http://carlh.net/software/${pkgname}/${pkgname}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf configure --prefix=/usr
  python2 waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf install --destdir=$pkgdir
}

sha512sums=('4d251a0db961c51ed9492950ed9c4355be0c675388464fbbe670063c7e93c7866f86b6e7cfb225b1c595a5c3eafbfdc78e777b5d9d1515d8c5d987ea49a89cf4'
            '4b776b2ff7e0ad87c896fa91863a5d1042401b81ce4326ce07347566653069ae77332b0864b721ab0802a9b33cee932a7721ebc0b6a70277aff95b52331e2316')
