# Maintainer: Markus Kalb <mk@filmkreis.tu-darmstadt.de>
# Contributor: Stefan Karner <stefan.karner@student.tuwien.ac.at>

pkgname=libdcp
pkgver=0.99.0
pkgrel=1
pkgdesc="A small C++ library which can create and read Digital Cinema Packages using JPEG2000 and WAV files"
arch=('i686' 'x86_64')
url="http://carlh.net/software/libdcp"
license=('GPL')
groups=
depends=('openssl' 'libxml++>=2.6' 'xmlsec' 'openjpeg' 'libcxml>=0.08' 'libsigc++>=2.0' 'boost-libs>=1.45')
makedepends=('python2' 'boost>=1.45')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(.AURINFO
        "http://carlh.net/software/${pkgname}/${pkgname}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf configure --prefix=/usr
  python2 waf build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python2 waf install --destdir=$pkgdir
}

sha512sums=('9236a0c72470352ec53cf8214ca984f2a9bcbb84ad86ef1898f64ede96f24cdf217e7c827d8f176f3647d6b88eb64e6336e72675437456d0e7d3a3f11e05a7f7'
            '199faa3ac975abfd7d9c9bf2ed4b10c10f032d93c6eff7da508c20ca470110b77c93ec97f5111b111c2b0ea443d1b65bc50ea10c75013a2c8b64dfe7bcd7fe9c')
