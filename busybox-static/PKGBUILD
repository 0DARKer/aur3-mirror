# Maintainer: Denis Kulakov <ked9@yandex.ru>

pkgname=busybox-static
pkgver=1.22.1
pkgrel=2
pkgdesc="Tiny versions of many common UNIX utilities into a single small executable. (gzip, tar)"
arch=('any')
url="http://www.busybox.net"
license=('GPLv2')
makedepends=('make' 'gcc')
conflicts=('busybox')
options=(strip !libtool staticlibs !upx !debug)
source=(http://busybox.net/downloads/busybox-$pkgver.tar.bz2
	config)
md5sums=('337d1a15ab1cb1d4ed423168b1eb7d7e'
         'c9f66b6ec5095f798cbbdada91818bb4')

build() {
  cd "$srcdir/busybox-$pkgver"
  cp $srcdir/config .config
  make all
}

package() {
  mkdir "$pkgdir/usr"
  mkdir "$pkgdir/usr/bin"
  cp "$srcdir/busybox-$pkgver/busybox" "$pkgdir/usr/bin"
}
