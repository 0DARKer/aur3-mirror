# Maintainer : Antonio Orefice <kokoko3k@gmail.com>
pkgname=gopreload-git
pkgver=20131125
pkgrel=1
pkgdesc="Preloads files needed for given programs."
arch=('any')
license=('GPL')
depends=('strace' 'coreutils')
conflicts=('gopreload')
url="http://forums.gentoo.org/viewtopic-t-622085-highlight-preload.html"
_gitroot="https://github.com/kokoko3k/gopreload"
install=gopreload.install

build() {
	rm -R $srcdir/gopreload &>/dev/null || echo "No old repository found, proceding to git clone..."
	git clone --depth 1 $_gitroot || return 1

	cd $srcdir/gopreload/source
	./compile.sh
}
 
package() { 
	cd $srcdir
	mkdir -p $pkgdir/usr/share/gopreload/bin
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/lib/systemd/system
	cp $srcdir/gopreload/bin/*.sh $pkgdir/usr/share/gopreload/bin/
	cp $srcdir/gopreload/source/mapandlock.$CARCH $pkgdir/usr/share/gopreload/bin/
	ln -s /usr/share/gopreload/bin/Prepare.sh $pkgdir/usr/bin/gopreload-prepare
	cp $srcdir/gopreload/LICENSE $pkgdir/usr/share/gopreload/
	cp $srcdir/gopreload/README $pkgdir/usr/share/gopreload/
	cp $srcdir/gopreload/prepare_exclude.txt $pkgdir/usr/share/gopreload/
	mkdir $pkgdir/usr/share/gopreload/enabled
	mkdir $pkgdir/usr/share/gopreload/disabled
	cp $srcdir/gopreload/gopreload.service $pkgdir/usr/lib/systemd/system/gopreload.service
}
