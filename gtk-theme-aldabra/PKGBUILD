# Maintainer: MLC <murderslastcrow at gmail dot com>
pkgname=gtk-theme-aldabra
pkgver=0.7.4
pkgrel=2
pkgdesc="A GTK2 port of the GTK3 theme Adwaita."
arch=(any)
url="http://gnome-Look.org/content/show.php?content=142247"
license=('LGPL')
makedepends=('unzip')
depends=('gtk-engine-murrine')
source=('http://GNOME-Look.org/CONTENT/content-files/142247-Aldabra-0.7.4.zip')
md5sums=('9804a2b24312bd06668a5039e9326ab9')


build() {
       mkdir -p "$pkgdir"/usr/share/themes
       cd "$srcdir"/
       bsdtar -xf "$srcdir"/142247-Aldabra-0.7.4.zip
       chmod -R 755 "$srcdir"/Aldabra

       cp -R "$srcdir"/Aldabra/ "$pkgdir"/usr/share/themes/
}
