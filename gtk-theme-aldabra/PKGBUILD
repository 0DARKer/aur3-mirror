# Maintainer: MLC <murderslastcrow at gmail dot com>
pkgname=gtk-theme-aldabra
pkgver=0.7.2
pkgrel=1
pkgdesc="A GTK 2 port of the GTK 3 theme Adwaita."
arch=(any)
url="http://gnome-Look.org/content/show.php?content=142247"
license=('GPL')
depends=('gtk-engine-murrine')
source=('http://GNOME-Look.org/CONTENT/content-files/142247-Aldabra-0.7.2.zip')
md5sums=(7bda60576c9d955a84c6f6496afd7612)


build() {
        mkdir -p ${pkgdir}/usr/share/themes/Aldabra
        bsdtar -xf 142247-Aldabra-0.7.2.zip -C ${pkgdir}/usr/share/themes/Aldabra
        chown -R root:root ${pkgdir}/usr/share/themes/Aldabra
}
