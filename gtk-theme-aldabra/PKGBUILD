# Maintainer: MLC <murderslastcrow at gmail dot com>
pkgname=gtk-theme-aldabra
pkgver=0.7.3
pkgrel=1
pkgdesc="A GTK 2 port of the GTK 3 theme Adwaita."
arch=(any)
url="http://gnome-Look.org/content/show.php?content=142247"
license=('GPL')
depends=('gtk-engine-murrine')
source=('http://GNOME-Look.org/CONTENT/content-files/142247-Aldabra-0.7.3.tar.gz')
md5sums=(08c23222e1f2dd704fb2b365ca9e838d)


build() {
        mkdir -p ${pkgdir}/usr/share/themes
        tar -xzf 142247-Aldabra-0.7.3.tar.gz -C ${pkgdir}/usr/share/themes
        chown -R root:root ${pkgdir}/usr/share/themes
}
