# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>
pkgname=ruby-gir-ffi
pkgver=0.0.8
pkgrel=1
pkgdesc="FFI-based GObject binding using the GObject Introspection Repository"
arch=('i686' 'x86_64')
url="http://github.com/mvz/ruby-gir-ffi"
license=('custom')
depends=('ruby' 'ruby-ffi')
source=("http://rubygems.org/gems/gir_ffi-$pkgver.gem")
noextract=("gir_ffi-$pkgver.gem")
md5sums=('a8f2af0fcd529ece61bb3d15f8884a02')

build() {
 cd $srcdir
 local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

 gem install --ignore-dependencies -i "$pkgdir$_gemdir" gir_ffi-$pkgver.gem
}
