# Contributors: fauno <fauno@kiwwwi.com.ar>
pkgname=monkeysign
pkgver=2.0.1
pkgrel=1
pkgdesc="OpenPGP Key Exchange for Humans"
arch=('any')
url="http://web.monkeysphere.info/monkeysign/"
license=('GPL3')
depends=('python2-qrencode' 'gtk2' 'pygtk' 'zbar' 'python2-imaging')
makedepends=('python2-setuptools')
source=(http://cdn.debian.net/debian/pool/main/m/${pkgname}/${pkgname}_${pkgver}.tar.xz)
md5sums=('8fca58d8526d2b607fe85a2da5ce771b')
sha256sums=('11d586d6cf362a29abaaa4736e2385fb54b680b83d4e7284e7e0ac05317daa77')


build() {
    cd "${pkgname}-${pkgver}"
    python2 setup.py build
}

package() {
    cd "${pkgname}-${pkgver}"
    python2 setup.py install --root="${pkgdir}" --prefix="/usr" --optimize=1
}

