# Contributor: mickael9 <mickael9 at gmail dot com>

pkgname=libticables
pkgver=1.3.2
pkgrel=1
pkgdesc="TI Link Cable Library"
arch=(i686 x86_64)
url="http://tilp.info/"
license="GPL"
depends=('libusb' 'glib2')
source=("http://downloads.sourceforge.net/project/tilp/tilp2-linux/tilp2-1.15/${pkgname}2-${pkgver}.tar.bz2"
    69-libticables.rules)

build() {
    cd $srcdir/${pkgname}2-$pkgver
    ./configure --prefix=/usr --enable-libusb10
    make
    make DESTDIR=$pkgdir install

    install -m755 -d ${pkgdir}/etc/udev/rules.d
    install -m644 ${srcdir}/69-libticables.rules ${pkgdir}/etc/udev/rules.d/
}

md5sums=('939c7a75acd449c063839db295707b8a'
         'ed8dd523e68a9414aae078a1604005f7')
