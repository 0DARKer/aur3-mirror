# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>
pkgname=ttf-amerika
_realname=Amerika
pkgver=1
pkgrel=1
pkgdesc="Amerika True Type Font"
arch=('any')
license=('custom')
url="http://www.fontsquirrel.com/fonts/Amerika"
_url="http://www.fontsquirrel.com/fonts/download/Amerika"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=ttf.install
options=(force)
source=("$_url/$_realname.zip"
        "LICENSE")

md5sums=('e0b1d8bab94fd28385c282091101e599'
         '2b5213dc391a4caa7db8f122584c4cb2')

build() {
  cd $srcdir
  install -d $pkgdir/usr/share/fonts/TTF/
  install -m644 *.ttf $startdir/pkg/usr/share/fonts/TTF/ || return 1
  install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
