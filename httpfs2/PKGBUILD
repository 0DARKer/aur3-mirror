# Contributor: Constantinko <helllamer@gmail.com>

pkgname=httpfs2
pkgver=0.1.4
pkgrel=1
pkgdesc="FUSE-based file system."
arch=('i686' 'x86_64')
url="http://httpfs.sourceforge.net/"
license=('GPL')
depends=('fuse' 'openssl')
makedepends=('asciidoc')
source=("http://downloads.sourceforge.net/project/httpfs/httpfs2/${pkgname}-${pkgver}.tar.gz")

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make httpfs2 httpfs2_ssl httpfs2.1
  gzip httpfs2.1
  install -D -m755 httpfs2 ${pkgdir}/usr/bin/httpfs2
  install -D -m755 httpfs2_ssl ${pkgdir}/usr/bin/httpfs2_ssl
  install -D -m644 httpfs2.1.gz ${pkgdir}/usr/share/man/man1/httpfs2.1.gz
  ln -s httpfs2.1.gz ${pkgdir}/usr/share/man/man1/httpfs2_ssl.1.gz

  install -D -m644 debian/copyright ${pkgdir}/usr/share/doc/httpfs2/copyright
}
sha256sums=('f7ccbb9f258233e7fdb7c55339fa69050e5df9ded08896edf2e4d3144234976e')
