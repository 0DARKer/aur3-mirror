# Contributor: Constantinko <helllamer@gmail.com>
pkgname=httpfs2
pkgver=0.1.3
pkgrel=2
pkgdesc="FUSE-based file system."
arch=('i686' 'x86_64')
url="http://httpfs.sourceforge.net/"
license=('GPL')
depends=('fuse' 'openssl')
makedepends=('asciidoc')
source=("http://downloads.sourceforge.net/project/httpfs/httpfs2/$pkgname-$pkgver.tar.gz")
md5sums=('d31dd27ba4ff9a99e6915564aa778a93')

build() {
  cd $srcdir/$pkgname-$pkgver
  install -d $pkgdir/usr/{bin,share/man/man1}
  make httpfs2 httpfs2_ssl httpfs2_ssl.1 httpfs2.1 || exit 1
  install -m755 httpfs2		$pkgdir/usr/bin/
  install -m755 httpfs2_ssl	$pkgdir/usr/bin/
  install -m755 httpfs2.1	$pkgdir/usr/share/man/man1/
  ln -s 	httpfs2.1	$pkgdir/usr/share/man/man1/httpfs2_ssl.1
}
