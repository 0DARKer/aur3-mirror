# Coutributer: Long <long-1988@foxmail.com>
pkgname=yunio
pkgver=1.0.12
pkgrel=2
epoch=
pkgdesc="Yunio Cloud Storage and Syncing to http://www.yun.io"
arch=('i686' 'x86_64')
url="http://www.yun.io"
license=("Custom:yunio")
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=('yunio')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
if [ "$CARCH" = "i686" ]; then
    _arch='i386'
    md5sums=('fd3650cb16e3c53b3aaaed85ec18bb8b')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='amd64'
    md5sums=('312d97048978fe0158a7fbd16afd6b73')
fi
source=(http://www.yun.io/downloads/yunio-1.0.12-${_arch}.deb)
noextract=()


package() {
    msg "Extracting the yunio package"
    ar -xv yunio-1.0.12-${_arch}.deb
    tar -xvf data.tar.gz
    msg2 "Done extracting!"
    
    msg "Start installation"
    mkdir  -p  $pkgdir/usr/share/applications
    mkdir  -p  $pkgdir/usr/share/icons
    mkdir  -p  $pkgdir/usr/bin
   
   mv  $srcdir/usr/share/applications/*.*  $pkgdir/usr/share/applications/
   mv  $srcdir/usr/share/icons/*.*   $pkgdir/usr/share/icons/
   mv  $srcdir/usr/bin/yunio    $pkgdir/usr/bin/
   msg2 "Done!"
} 


