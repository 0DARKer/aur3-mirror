# Coutributer: limser <echo bGltc2VyQHFxLmNvbQo=|base64 -d>

pkgname=yunio
pkgver=2.4.2
pkgrel=1
pkgdesc="Yunio Cloud Storage and Syncing to http://www.yun.io"
arch=('i686' 'x86_64')
url="http://www.yun.io"
license=("Custom:yunio")
depends=('fontconfig' 'libsm' 'libxext' 'libxrender')
provides=('yunio')

if [ "$CARCH" = "i686" ]; then
    _arch='i386'
    md5sums[1]='16cc31164073499f9ba470f8b23e73ec'
elif [ "$CARCH" = "x86_64" ]; then
    _arch='amd64'
    md5sums[1]='ae9c1af0c2de17783ba7c373a88d93b4'
fi
md5sums[0]='028f3292a27f62be638e7362e3e744e3'
source=("yunio.png" "https://www.yunio.com/download/${pkgname}-${pkgver}-generic-${_arch}.tgz")

package()
{
    cd "${srcdir}"
    install -dm755 "${pkgdir}"/usr/{bin,share/{icons,applications}}
    install -Dm755 yunio "${pkgdir}/usr/bin/yunio"
    install -Dm644 yunio.png "${pkgdir}/usr/share/icons/yunio.png"
    cat >yunio.desktop <<EOF
[Desktop Entry]
Encoding=UTF-8
Name=Yunio
Name[zh_CN]=云诺
Comment=Yunio Cloud Storage
Comment[zh_CN]=云诺存储
Exec=yunio
Icon=yunio.png
Terminal=0
Type=Application
Categories=Network;Application;'
EOF
    install -Dm644 yunio.desktop "${pkgdir}/usr/share/applications/yunio.desktop"
} 




