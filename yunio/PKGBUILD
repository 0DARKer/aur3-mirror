# Coutributer: Long <long-1988@foxmail.com>
pkgname=yunio
pkgver=1.0.13
pkgrel=3
epoch=
pkgdesc="Yunio Cloud Storage and Syncing to http://www.yun.io"
arch=('i686' 'x86_64')
url="http://www.yun.io"
license=("Custom:yunio")
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=('yunio')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
if [ "$CARCH" = "i686" ]; then
    _arch='i386'
    md5sums=('10c9399ad0c0bbd354d72dcbe1323449' '028f3292a27f62be638e7362e3e744e3')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='amd64'
    md5sums=('e0e71e099f70d15eba6ae2b9336e485c' '028f3292a27f62be638e7362e3e744e3')
fi
source=("http://www.yun.io/downloads/yunio-1.0.13-generic-${_arch}.tgz"  "http://i.minus.com/durlt7t9qpcWj.png")
noextract=()


package() {
    msg "Extracting the yunio package"
    tar -xvf yunio-1.0.13-generic-${_arch}.tgz
    msg2 "Done extracting!"
    
    msg "Start installation"
    mkdir -p   $pkgdir/usr/bin
    mkdir -p   $pkgdir/usr/share/applications
    mkdir -p   $pkgdir/usr/share/icons
    mv  $srcdir/yunio/yunio   $pkgdir/usr/bin/
    cp  durlt7t9qpcWj.png    $pkgdir/usr/share/icons/
    cd $pkgdir/usr/share/icons/
    mv durlt7t9qpcWj.png  yunio.png
    echo '
[Desktop Entry]
Name=Yunio
Comment=Yunio Cloud Storage
Exec=yunio
Icon=yunio.png
Terminal=0
Type=Application
Encoding=UTF-8
Categories=Network;Application;' > $pkgdir/usr/share/applications/yunio.desktop
  
  msg2 "Done!"
   
} 


