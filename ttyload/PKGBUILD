pkgname=ttyload 
pkgver=0.5.2
pkgrel=1 
pkgdesc="Color-coded graph of load averages" 
arch=('i686' 'x86_64') 
url="http://www.daveltd.com/src/util/ttyload/" 
license=('ISC') 
groups=() 
depends=('glibc') 
makedepends=() 
optdepends=() 
provides=() 
conflicts=() 
replaces=() 
backup=() 
options=() 
install= 
changelog= 
source=(http://www.daveltd.com/src/util/ttyload/$pkgname-$pkgver.tar.bz2) 
noextract=() 
md5sums=('0eae93834914f307cb4295de7b9448b5') #generate with 'makepkg -g' 

build() {
 	cd "$srcdir/$pkgname-$pkgver"

	make
} 

package() { 
	cd "$srcdir/$pkgname-$pkgver" 
	
	mkdir $pkgdir{/usr,/usr/bin}
	make INSTALLDIR="$pkgdir/usr/bin" install 
	install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
} 
