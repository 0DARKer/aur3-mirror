# Contributor: farid abdelnour <farid at atelier-labs.org>

pkgname=tss	
pkgver=0.2
pkgrel=2
pkgdesc="A GUI to make theora video streams using ffmpeg2theora software."
arch=('i686')
url="http://gollum.artefacte.org/tss/"
depends=('dvgrab' 'ffmpeg2theora' 'oggfwd' 'ffmpeg' 'libtheora' 'libraw1394')
license=('GPL3')
source=(http://gollum.artefacte.org/tss/${pkgname}-${pkgver}.tar.gz)
md5sums=('1e24cb596f732c409d7468952b2f67df')

build() {
	cd ${startdir}/src/${pkgname}-${pkgver}
	./configure -prefix=/usr
	make || return 1
	make DESTDIR=$startdir/pkg install 
}


