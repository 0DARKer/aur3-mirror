# Contributor: Enric Caussa Morales <myenr1x@gmail.com>
# Maintainer : x-demon 
pkgname=nicotine-plus-svn
pkgver=1452
pkgrel=1
pkgdesc="A fork of nicotine, a Soulseek music-sharing client written in python. SVN version."
depends=('pygtk' 'python-geoip')
makedepends=('subversion' 'python')
conflicts=('nicotine' 'nicotine-plus')
replaces=('nicotine' 'nicotine-plus')
url=("http://nicotine-plus.org")
arch=('i686' 'x86_64')
license=('GPL')
source=()
md5sums=()

_svntrunk="http://nicotine-plus.org/svn/trunk/nicotine+"
_svnmod="nicotine-plus-svn"

build() {
  svn co $_svntrunk $_svnmod
  cd ${startdir}/src/$pkgname
  python2 setup.py install --root=${startdir}/pkg
  msg "Documentation was removed. Refer to nicotine-plus' homepage for more info" && rm -rf ${startdir}/pkg/usr/share/nicotine/documentation
}
