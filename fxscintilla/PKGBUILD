# Contributor: Michal Krenek <mikos@sg1.cz>

pkgname=fxscintilla
pkgver=1.71
pkgrel=1
pkgdesc="Scintilla is a free source code editing component for Win32 and GTK+ developped by Neil Hodgson."
url="http://www.nongnu.org/fxscintilla/"
license="LGPL"
depends=('fox')
arch=(i686)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://download.savannah.nongnu.org/releases/fxscintilla/$pkgname-$pkgver.tar.gz")
md5sums=(302b5a3d54a259e3bfea2ab1f4040d49)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

