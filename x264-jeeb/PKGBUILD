pkgname=x264-jeeb
pkgver=2184
pkgrel=1
pkgdesc="H.264/MPEG-4 AVC video encoder with JEEB's patchsets"
arch=('i686' 'x86_64')
url="http://x264.fushizen.eu/"
license=('GPL')
depends=('glibc')
optdepends=('ffmpeg-shared-git: for lavf input')
makedepends=('yasm')
conflicts=('x264')
provides=("x264=$(LANG=C pacman -Si x264 | grep Version | awk '{ print $NF }')") 
source=("https://github.com/jeeb/x264_L-SMASH/tarball/r$pkgver")
md5sums=('6dfbab51bef360e48ba40c128b9b403d')

build() {
  cd $srcdir
  tar xzvf $srcdir/r$pkgver
  
  cd jeeb-x264_L-SMASH-*
  
  ./configure \
    --prefix=/usr \
    --enable-nonfree \
    --enable-static \
    --enable-shared
  
  make DESTDIR=$pkgdir install
}
