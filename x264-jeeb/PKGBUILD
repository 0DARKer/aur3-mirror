pkgname=x264-jeeb
pkgver=2120
pkgrel=1
pkgdesc="H.264/MPEG-4 AVC video encoder with JEEB's patchsets"
arch=('i686' 'x86_64')
url="http://x264.fushizen.eu/"
license=('GPL')
depends=('glibc')
makedepends=('git' 'yasm')
conflicts=('x264')
provides=("x264=$(LANG=C pacman -Si x264 | grep Version | awk '{ print $NF }')") 
source=('https://github.com/jeeb/x264_L-SMASH/tarball/r2120')
md5sums=('5697735ab520096ec3067c05e04b3e39')

build() {
  cd $srcdir
  tar xzvf $srcdir/r2120
  
  cd jeeb-x264_L-SMASH-*
  
  ./configure \
    --prefix=/usr \
    --enable-nonfree \
    --enable-static \
    --enable-shared
  
  make DESTDIR=$pkgdir install
}
