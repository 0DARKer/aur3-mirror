# Maintainer: Franco Tortoriello <franco.tortoriello@gmail.com>

pkgname=asm6
pkgver=1.6
pkgrel=1
pkgdesc="6502 assembler"
arch=('i686' 'x86_64')
url="http://home.comcast.net/~olimar/NES/"
license=('custom')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://home.comcast.net/~olimar/NES/$pkgname.zip)
noextract=()
md5sums=('7b49bb79bd3af5a2da841f8f8ee01c59')

build() {
  cd "$srcdir"
  gcc $pkgname.c -o $pkgname
}

package() {
  cd "$srcdir"
  install -d "$pkgdir/usr/bin/" "$pkgdir/usr/share/doc/$pkgname"
  install -m755 $pkgname "$pkgdir/usr/bin/"
  install -m755 README.TXT "$pkgdir/usr/share/doc/$pkgname/"
}

