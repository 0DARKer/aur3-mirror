pkgname=cairo-dock-plug-ins
_pkgname=cairo-dock-plugins
pkgver=2.4.0
pkgrel=2
pkgdesc="Plugins for cairo-dock"
url="https://launchpad.net/cairo-dock"
license="GPL"
arch=('i686' 'x86_64')
depends=("cairo-dock=$pkgver" 'libxxf86vm' 'vte' 'alsa-lib')
makedepends=('cmake' 'pkgconfig' 'libtool')
options=('!libtool')
source=(http://launchpad.net/$pkgname/2.4/$pkgver/+download/$_pkgname-$pkgver~$pkgrel.tar.gz 'python2.patch')
md5sums=('38cba2c63c815e359a5d86cba0d209df' '58c9677994b71a1444d36bdc3607ec2d')

build() {
  cd $srcdir/$_pkgname-$pkgver~$pkgrel
  
  patch -p1 -i $srcdir/python2.patch

  [[ -e build ]] || mkdir build
  cd build

  cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DROOT_PREFIX=$startdir/pkg \
  -Denable-network-monitor=yes \
  -Denable-disks=yes \
  -Denable-old-gnome-integration=yes \
  -Denable-doncky=yes \
  -Denable-scooby-do=yes
  make
}

package() {
  cd $srcdir/$_pkgname-$pkgver~$pkgrel/build
  make install DESTDIR=$pkgdir
}

