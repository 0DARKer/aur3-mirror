pkgname=cairo-dock-plug-ins
_pkgname=cairo-dock-plugins
pkgver=2.3.0
subversion=3
pkgrel=3
pkgdesc="Plugins for cairo-dock"
url="https://launchpad.net/cairo-dock"
license="GPL"
arch=('i686' 'x86_64')
depends=("cairo-dock=$pkgver" 'libxxf86vm' 'vte' 'alsa-lib')
makedepends=('cmake' 'pkgconfig' 'libtool')
options=('!libtool')
source=(http://launchpad.net/$pkgname/2.3/$pkgver/+download/$_pkgname-$pkgver~$subversion.tar.gz)
md5sums=('b923a1cb934c5935c64019e40f15aa9a')


build() {
  cd $srcdir/$_pkgname-$pkgver~$subversion

  [[ -e build ]] || mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/$_pkgname-$pkgver~$subversion/build
  make install DESTDIR=$pkgdir
}

