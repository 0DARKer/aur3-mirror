# Contributor: fnord0 < fnord0 AT riseup DOT net >

pkgname=maltego
pkgver=3.0.936
pkgrel=1
pkgdesc="Maltego Community Edition - an open source intelligence and forensics application, enabling to easily gather information about DNS, domains, IP addresses, websites, persons, etc. The Community Edition is the free version of the commercial client with various limitations (see 'http://www.paterva.com/web5/client/difference.php')."
arch=('i686' 'x86_64')
url="http://www.paterva.com/web5"
license=('GPL')
depends=('jre')
source=("http://www.paterva.com/malv3/MaltegoCESetup.v3.0.936.zip"
       "https://www.paterva.com/web5/documentation/Maltego3_crash_course.pdf")
md5sums=('28026d5972bcc39a0c891e1a41692157'
	 '70711273436310099d7d81b47db96565')
sha1sums=('0b20e00060baae7a4165a919d927b17463f89186'
	  '21ac1567184e60e1f1432c5c455877950e6e7366')
install=('maltego.install')

build() {
  #maltego.dependencies
  cd ${srcdir}/v3.0
  install -d ${pkgdir}/usr/share/${pkgname} || return 1
  install -d ${pkgdir}/usr/share/${pkgname}/doc || return 1
  install -d ${pkgdir}/usr/bin || return 1
  #install -d ${pkgdir}/usr/share/licenses/${pkgname} || return 1
  # the COMMERCIAL client license resides @ https://www.paterva.com/web5/server/MaltegoServerAgreement.pdf
  cp -pR bin cluster etc maltego maltego-nb-ide12 platform11 ${pkgdir}/usr/share/maltego || return 1
  install -Dm644 ${startdir}/Maltego3_crash_course.pdf ${pkgdir}/usr/share/${pkgname}/doc/${doc} || return 1
  install -D -m755 ${startdir}/${pkgname} ${pkgdir}/usr/bin/${pkgname} || return 1
}
