# Contributor: Shinlun Hsieh <yngwiexx@yahoo.com.tw>
pkgname=ssrc
pkgver=1.30
pkgrel=1
pkgdesc="A fast and high quality sampling rate converter"
arch=(i686)
url="http://shibatch.sourceforge.net/"
license=('LGPL')
depends=('glibc')
source=(http://shibatch.sourceforge.net/download/${pkgname}-${pkgver}.tgz)
md5sums=('a14b3c4f97c52e37e9cfeb65fc61f2bf')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  make || return 1
  mkdir -p ${startdir}/pkg/usr/bin
  install -m755 {ssrc,ssrc_hp} ${startdir}/pkg/usr/bin/ || return 1
}
