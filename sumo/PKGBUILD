# Maintainer: mareex <marcus.behrendt.86[at]gmail[dot]com>

pkgname=sumo
pkgver=0.21.0
pkgrel=1
pkgdesc="SUMO is an open source, highly portable, microscopic and continuous road traffic simulation package designed to handle large road networks"
arch=('any')
url="http://${pkgname}-sim.org"
license=('GPL')
depends=('gcc-libs' 'glibc' 'fox' 'xerces-c' 'glu' 'libgl')
optdepends=('python2: for executing various python scripts in $SUMO_HOME/tools'
            'perl: for executing various perl scripts in $SUMO_HOME/tools')
makedepends=('make' 'gcc' 'help2man')
source=("http://sourceforge.net/projects/${pkgname}/files/${pkgname}/version%20${pkgver}/${pkgname}-all-${pkgver}.tar.gz" 
        "${pkgname}.desktop"
        "${pkgname}.install")
sha256sums=('beae58a1825ddf26fea9a7c19938a04d0335a0c5993fb290af54768cebd89189'
            '0500ba9cdf827cceae9a9bce66094bdb077300c94b0040bdd710afb92d0d4849'
            '9125c0a75972b74a501357029389ddf1c1871d1c4c67ee047430caf05a408049')
install=${pkgname}.install

prepare() {
    cd ${srcdir}/${pkgname}-${pkgver}
    # replace python with python2 in shebangs
    find . -iname \*.py -exec sed -i 's/#!\/usr\/bin\/env python/#!\/usr\/bin\/env python2/' {} \;
    find . -iname \*.py -exec sed -i 's/#!\/usr\/bin\/python/#!\/usr\/bin\/python2/' {} \;

    # test if there are still py-files without shebangs
    for f in $(find . -iname \*.py)
    do
        if [ -z "$(grep -l '^#!/.*python' "$f")" ]; then
			sed -i "1i #!/bin/env python2" $f
        fi
    done
}

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure --prefix=/usr
    make
    make man
}

package() {
    mkdir -p ${pkgdir}/usr/bin
    mkdir -p ${pkgdir}/usr/lib/${pkgname}/data
    mkdir -p ${pkgdir}/usr/lib/${pkgname}/tools
    mkdir -p ${pkgdir}/usr/share/applications
    mkdir -p ${pkgdir}/usr/share/doc/${pkgname}
    mkdir -p ${pkgdir}/usr/share/man/man1
    mkdir -p ${pkgdir}/usr/share/pixmaps

    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/activitygen ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/dfrouter ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/duarouter ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/emissionsDrivingCycle ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/emissionsMap ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/jtrrouter ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/netconvert ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/netgenerate ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/od2trips ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/polyconvert ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/${pkgname} ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/${pkgname}-gui ${pkgdir}/usr/bin/
    install -m0755 ${srcdir}/${pkgname}-${pkgver}/bin/TraCITestClient ${pkgdir}/usr/bin/


    SAVEIFS=$IFS
    IFS=$(echo -en "\n\b")

    ln -s /usr/bin ${pkgdir}/usr/lib/${pkgname}/bin
    ln -s /usr/share/doc/${pkgname}/doxygen ${pkgdir}/usr/lib/${pkgname}/doxygen
    ln -s /usr/share/doc/${pkgname}/examples ${pkgdir}/usr/lib/${pkgname}/examples
    ln -s /usr/share/doc/${pkgname}/pydoc ${pkgdir}/usr/lib/${pkgname}/pydoc
    ln -s /usr/share/doc/${pkgname}/tutorial ${pkgdir}/usr/lib/${pkgname}/tutorial
    ln -s /usr/share/doc/${pkgname}/userdoc ${pkgdir}/usr/lib/${pkgname}/userdoc
########### DATA
    cd ${srcdir}/${pkgname}-${pkgver}/data
    for d in $(find . -type d)
    do
        mkdir -p ${pkgdir}/usr/lib/${pkgname}/data/$d
    done
    for f in $(find . -type f)
    do
        install -m0644 $f ${pkgdir}/usr/lib/${pkgname}/data/$f
    done
########### TOOLS
    cd ${srcdir}/${pkgname}-${pkgver}/tools
    for d in $(find . -type d)
    do
        mkdir -p ${pkgdir}/usr/lib/${pkgname}/tools/$d
    done
    for f in $(find . -type f)
    do
        install -m0644 $f ${pkgdir}/usr/lib/${pkgname}/tools/$f
    done

    # make all scripts executable
    find ${pkgdir}/usr/lib/${pkgname}/tools/ -iname \*.sh -exec chmod +x {} \;
    find ${pkgdir}/usr/lib/${pkgname}/tools/ -iname \*.py -exec chmod +x {} \;
    find ${pkgdir}/usr/lib/${pkgname}/tools/ -iname \*.pl -exec chmod +x {} \;
########### PIXMAP
    install -m0644 ${srcdir}/${pkgname}-${pkgver}/docs/userdoc/logo.png ${pkgdir}/usr/share/pixmaps/${pkgname}.png
########### .DESKTOP FILE
    install -m0644 ${srcdir}/${pkgname}.desktop ${pkgdir}/usr/share/applications
########### DOCS
    cd ${srcdir}/${pkgname}-${pkgver}/docs
    for d in $(find . -type d)
    do
        mkdir -p ${pkgdir}/usr/share/doc/${pkgname}/$d
    done
    for f in $(find . -type f)
    do
        install -m0644 $f ${pkgdir}/usr/share/doc/${pkgname}/$f
    done
    install -m0644 ${srcdir}/${pkgname}-${pkgver}/AUTHORS ${pkgdir}/usr/share/doc/${pkgname}
    install -m0644 ${srcdir}/${pkgname}-${pkgver}/ChangeLog ${pkgdir}/usr/share/doc/${pkgname}
    install -m0644 ${srcdir}/${pkgname}-${pkgver}/COPYING ${pkgdir}/usr/share/doc/${pkgname}
    install -m0644 ${srcdir}/${pkgname}-${pkgver}/README ${pkgdir}/usr/share/doc/${pkgname}

    rm -rf ${pkgdir}/usr/share/doc/${pkgname}/man
########### MAN
    cd ${srcdir}/${pkgname}-${pkgver}/docs/man
    for d in $(find . -type d)
    do
        mkdir -p ${pkgdir}/usr/share/man/man1/$d
    done
    for f in $(find . -type f)
    do
        install -m0644 $f ${pkgdir}/usr/share/man/man1/$f
    done
}
