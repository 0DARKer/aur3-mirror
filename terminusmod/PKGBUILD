# Maintainer: stlarch  stlarchie@gmail.com

pkgname=terminusmod
pkgver=1
pkgrel=2
pkgdesc="A smaller, modified version of terminus font size 14 with bold and added status icons"
arch=('any')
url="http://sourceforge.net/projects/terminusmod"
license=('GPL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=terminusmod.install
source=("http://sourceforge.net/projects/terminusmod/files/terminusmod-1.2.tar.gz")

build () {
  cd "$srcdir/terminusmod-1.2"

  install -d "$pkgdir/usr/share/fonts/local"

  install -m644 * "$pkgdir/usr/share/fonts/local/"
}

md5sums=('d12ba7b189d7fdf4f639eddc4482f901')
