# Maintainer: stlarch  stlarchie@gmail.com

pkgname=terminusmod
pkgver=1.8.3
pkgrel=1
pkgdesc="Bold 12 for Terminus font (ISO8859-1) and versions with status icons"
arch=('any')
url="http://sourceforge.net/projects/terminusmod"
license=('GPL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=terminusmod.install
source=("http://sourceforge.net/projects/terminusmod/files/$pkgname-$pkgver.tar.gz")

build () {
  cd "$srcdir/$pkgname-$pkgver"

  install -d "$pkgdir/usr/share/fonts/local"

  install -m644 *.pcf README.terminusmod "$pkgdir/usr/share/fonts/local/"
}
md5sums=('8ea807bf9e8b96c6da7514fb8eb3813d')
