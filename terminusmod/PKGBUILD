# Maintainer: stlarch  stlarchie@gmail.com

pkgname=terminusmod
pkgver=1
pkgrel=1
pkgdesc="A modified version of terminus font size 14 with added glyphs"
arch=('any')
url="http://sourceforge.net/projects/terminusmod"
license=('GPL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=terminusmod.install
source=("http://sourceforge.net/projects/terminusmod/files/terminusmod-1.1.tar.gz")

build () {
  cd "$srcdir/terminusmod-1.1"

  install -d "$pkgdir/usr/share/fonts/local"

  install -m644 * "$pkgdir/usr/share/fonts/local/"
}

md5sums=('48bc0aecec12307398c7ba016d71e970')
