_pkgbase=libdvdread
pkgname=lib32-${_pkgbase}
pkgver=4.9.9
pkgrel=1
pkgdesc="Provides a simple foundation for reading DVD video disks (32 bit)"
arch=('x86_64')
url="http://dvdnav.mplayerhq.hu"
license=('GPL')
depends=('lib32-glibc' "${_pkgbase}")
makedepends=('lib32-libdvdcss' 'gcc-multilib')
options=('!libtool')
source=("http://dvdnav.mplayerhq.hu/releases/${_pkgbase}-${pkgver}.tar.xz")
md5sums=('1aa8ad88e462791a8e77d628a63ee788')


build() {
export CC='gcc -m32'
export CXX='g++ -m32'
export PKG_CONFIG_PATH='/usr/lib32/pkgconfig'
  
cd "${srcdir}/${_pkgbase}-${pkgver}"
./configure --prefix=/usr --libdir=/usr/lib32
make
}

package() {
cd "${srcdir}/${_pkgbase}-${pkgver}"
make DESTDIR="${pkgdir}" install
rm -rf "${pkgdir}/usr"/{bin,include,share}
}
