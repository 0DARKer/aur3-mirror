# Contributor: yannsen <ynnsen at gmail dot com>

pkgname=guymager
pkgver=0.6.2
pkgrel=1
pkgdesc="A forensic imager for media acquisition"
arch=('i686' 'x86_64')
url="http://guymager.sourceforge.net/"
license=('GPL')
depends=('qt')
options=(!strip)

if [ "${CARCH}" = "x86_64" ]; then 
   _ar=amd64
   md5sums[0]=a5193971418cfd5a10cdea2b8dae5e03
else
   _ar=i386
   md5sums[0]=e640044b9f8aa105a36caa6e0b0b8595
fi 

#_ar=i386
source=("${pkgname}-beta_${pkgver}-${pkgrel}_${_ar}.deb::http://sourceforge.net\
/projects/${pkgname}/files/${pkgname}/${pkgname}-${pkgver}/${pkgname}-beta_\
${pkgver}-${pkgrel}_${_ar}.deb/download")

package() {
  cd "${srcdir}"
  rm debian-binary
  rm control.tar.gz
  tar -xf data.tar.gz -C "${pkgdir}"
}
