pkgname=oyranos
pkgver=0.2.0
pkgrel=4
pkgdesc="A Colour Management System (CMS) on operating system level."
url="http://oyranos.org/"
arch=('i686' 'x86_64')   
makedepends=()
depends=(libxml2 libxinerama libxrandr libxfixes libxxf86vm doxygen graphviz lcms2 libraw xcalib libxcm icc_examin)
optdepends=(fltk qt elektra cups sane cairo openicc)
source=("http://prdownloads.sourceforge.net/oyranos/$pkgname-0.2.0.tar.gz")
md5sums=('0c4bb2479efc37123db4ff8cd7bb787a')
license=('MIT')

build() {
    cd $srcdir/$pkgname-$pkgver
    ./configure --prefix=/usr --enable-threads --enable-xft --enable-shared || return 1
    make || return 1
    make DESTDIR=$pkgdir install

}
