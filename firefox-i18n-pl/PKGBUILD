pkgname=firefox-i18n-pl
pkgver=4.0
pkgrel=1
pkgdesc="Polish language pack for Firefox"
arch=('any')
url="http://aviary.pl"
depends=('firefox>=4.0' 'firefox<4.1')
license=('MPL')
_language=pl
conflicts=('firefox-i18n')
source=http://releases.mozilla.org/pub/mozilla.org/firefox/releases/${pkgver}/linux-i686/xpi/${_language}.xpi
md5sums=('ae1c3fb99330c255feba09fc7d6a6017')

package() {
  install -Dm644 ${_language}.xpi "${pkgdir}"/usr/lib/firefox-4.0/extensions/langpack-${_language}@firefox.mozilla.org.xpi
}

