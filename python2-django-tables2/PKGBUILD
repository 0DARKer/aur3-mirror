# Maintainer: Jeremy "Ichimonji10" Audet <ichimonji10 at gmail dot com>

pkgname=python2-django-tables2
_pkgname="${pkgname#python2-}"
pkgver=0.14.0
pkgrel=3
pkgdesc='A module for rendering Django data sets as HTML tables.'
arch=(any)
url='https://github.com/bradleyayers/django-tables2'
license=(MIT)
depends=(python2-django python2-six)
makedepends=(python2-distribute)
options=(!emptydirs)
source=("https://github.com/bradleyayers/${_pkgname}/archive/v${pkgver}.tar.gz")
sha256sums=('26a0dba712531f132fec013133e83003ce9381d97ec550c9111dd2541397a8b1')

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -Dm 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
