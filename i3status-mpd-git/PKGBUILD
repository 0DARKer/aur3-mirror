# Maintainer: Suhaimi Ghazali <serdotlinecho@gmail.com>

pkgname=i3status-mpd-git
pkgver=20130227
pkgrel=1
pkgdesc="i3status, mpd patched version"
arch=('i686' 'x86_64')
url="https://github.com/Gravemind/i3status"
license=('BSD')
depends=('wireless_tools' 'confuse' 'alsa-lib' 'yajl' 'libmpdclient')
makedepends=('git')
conflicts=('i3status' 'i3status-git')

_gitroot="https://github.com/Gravemind/i3status"
_gitname="i3status"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d $_gitname ]] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}
