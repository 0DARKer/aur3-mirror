# Maintainer: Allen Choong <allen.choong at gmail dot com>
pkgname=prayer-clock
pkgver=1.0.0
pkgrel=1
pkgdesc="Catholic prayers reminder, contains Angelus and 3 O'clock Prayer"
url='http://sourceforge.net/projects/prayerclock/'
arch=('i686')
license=('BSD')
depends=('gtk2')
source="http://downloads.sourceforge.net/project/prayerclock/${pkgname}-${pkgver}/${pkgname}_${pkgver}-i386.deb"
md5sums=('e5236f1fe1a17f854e616d2c4025c854')


build() {
	ar xv ${pkgname}_${pkgver}-i386.deb || return 1
	tar xzvf data.tar.gz || return 1
	mv $srcdir/usr $pkgdir
}
