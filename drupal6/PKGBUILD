# Contributor: Ryan Aghdam <ryan@aghdam.org>
pkgname=drupal6
pkgrealname=drupal
pkgver=6.16
pkgrel=1
pkgdesc="Drupal 6.16 PHP content management system"
arch=('any')
url="http://drupal.org/"
license=('GPL2')
depends=()
backup=('/opt/drupal6/.htaccess')
install=('drupal6.install')
source=(http://drupal.org/files/projects/$pkgrealname-$pkgver.tar.gz)
md5sums=('bb27c1f90680b86df2c535b2d52e8021')

build() {
  mkdir -p $startdir/pkg/opt
  cp -r $startdir/src/$pkgrealname-$pkgver $startdir/pkg/opt/drupal6
}

