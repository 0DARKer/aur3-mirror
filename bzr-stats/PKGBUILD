# Maintainer: Carlos Eduardo Moreira dos Santos (cemsbr) <cems at domain cemshost.com.br>

pkgname=bzr-stats
pkgver=31
pkgrel=1
pkgdesc="Simple statistics plugin for Bazaar."
arch=('i686' 'x86_64')
url="http://launchpad.net/bzr-stats"
license=('GPL')
depends=('bzr')

build() {
  bzr co -r $pkgver --lightweight lp:bzr-stats "${startdir}/src"
  cd "${startdir}/src"
  python setup.py install --prefix'=/usr' --root="${startdir}/pkg" || return 1
}
