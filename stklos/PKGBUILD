# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=stklos
pkgver=1.01
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="STklos is a free R5RS Scheme"
url="http://www.stklos.net"
license=('GPL')
depends=('gmp' 'pcre' 'gc' 'libffi')
source=(http://www.stklos.net/download/$pkgname-$pkgver.tar.gz)
md5sums=('2c370627c3abd07c30949b2ee7d3d987')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc 
  make 
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir sysconfdir=$pkgdir/etc install 
  install -Dm644 $pkgdir/usr/etc/$pkgname/Makefile-scmpkg.tmpl \
    $pkgdir/etc/$pkgname/Makefile-scmpkg.tmpl
  rm -r $pkgdir/usr/etc
}
