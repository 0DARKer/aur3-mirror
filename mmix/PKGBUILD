# Maintainer: Tino Reichardt <milky-archlinux@mcmilk.de>
pkgname=mmix
pkgver=0.2
pkgrel=2
pkgdesc="small console mixer"
license="GPL"
depends=()
provides=()
replaces=()
conflicts=()
makedepends=('dietlibc')
install=()
backup=()
source=(http://www.mcmilk.de/projects/mmix/dl/$pkgname-$pkgver.tar.gz)
url="http://www.mcmilk.de/projects/mmix/"
md5sums=('883a76a82a930093752219b370fc92f8')

build() {
	cd $startdir/src/$pkgname-$pkgver
	make mmix
	mkdir -p $startdir/pkg/usr/bin $startdir/pkg/usr/man/man1
	cp mmix $startdir/pkg/usr/bin
	cp doc/mmix.1 $startdir/pkg/usr/man/man1
}
