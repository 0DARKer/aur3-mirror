# Maintainer: DavidK <david_king at softhome dot net>
# Contributor: jsteel <mail at jsteel dot org>
# Contributor: Christoph Zeiler <rabyte*gmail>
# Contributor: Ronan Rabouin <darkbaboon*gmail>
pkgname=freedoom
pkgver=0.8
pkgrel=1
pkgdesc="Completely free Doom IWADs (game data)"
arch=('any')
url="http://freedoom.github.io/"
license=('BSD')
install=$pkgname.install
options=(!makeflags)
source=('https://github.com/freedoom/freedoom/releases/download/v0.8/freedoom-iwad-v0.8.zip'
        'https://github.com/freedoom/freedoom/releases/download/v0.8/freedoom-ultimate-v0.8.zip'
        'https://github.com/freedoom/freedoom/releases/download/v0.8/freedm-v0.8.zip')
md5sums=('04cdd4618111fc201abd0a432313c24a'
         '7ccb8a04c12a0773b1f239502f497f17'
         'f3c39b41305a46f333945a14859d77c2')

package() {
    cd "$srcdir"

    install -dm755 "$pkgdir"/usr/share/freedoom
    install -m644 freedoom-iwad-v0.8/doom2.wad "$pkgdir"/usr/share/freedoom/
    install -m644 freedoom-ultimate-v0.8/doom.wad "$pkgdir"/usr/share/freedoom/
    install -m644 freedm-v0.8/freedm.wad "$pkgdir"/usr/share/freedoom/
    install -Dm644 freedoom-iwad-v0.8/COPYING "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
