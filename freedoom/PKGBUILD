# Maintainer: Ronan Rabouin <darkbaboon*gmail>

pkgname=freedoom
pkgver=0.7
pkgrel=1
pkgdesc="Completely free Doom IWADs (game data)"
arch=('any')
url="http://www.nongnu.org/freedoom/"
license=('BSD')
makedepends=('deutex-devel' 'imagemagick')
source=(http://savannah.nongnu.org/download/$pkgname/source/$pkgname-$pkgver.tar.gz)
md5sums=('109b1a10a13cfa9c72f9096f4a0ef0cd')

build() {
    cd $srcdir/$pkgname-$pkgver

    make || return 1

    install -d $pkgdir/usr/share/doom
    install -Dm 644 wads/{doom,doom2,freedm}.wad $pkgdir/usr/share/doom/
    install -Dm 644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}
