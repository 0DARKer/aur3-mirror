# Maintainer: Mad Fish <MadFishTheOne@gmail.com>

pkgname=qtpanel-git
pkgver=20130301
pkgrel=1
pkgdesc="A project to create useful and beautiful panel in Qt"
arch=(i686 x86_64)
license=('GPL3')
url="https://gitorious.org/qtpanel"
depends=('qt4')
makedepends=('cmake' 'git')
conflicts=('qtpanel')
provides=('qtpanel')

_gitroot="git://github.com/MadFishTheOne/qtpanel.git"
_gitname="qtpanel"

build()
{
	cd "${srcdir}"
	msg "Connecting to GIT server...."

	if [ -d ${_gitname} ] ; then
		cd ${_gitname} && git pull origin
		msg "The local files are updated."
	else
		git clone ${_gitroot} ${_gitname}
	fi

	msg "GIT checkout done or server timeout"

	mkdir -p "${srcdir}/${_gitname}-build"
	cd "${srcdir}/${_gitname}-build"
	cmake -DCMAKE_BUILD_TYPE=Release "${srcdir}/${_gitname}"

	msg "Starting make..."
	make
	mkdir -p "${pkgdir}/usr/bin"
	cp qtpanel "${pkgdir}/usr/bin"
} 

