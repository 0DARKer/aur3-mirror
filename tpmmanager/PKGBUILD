# Contributor : xav <xav at ethetricks dot eu>

pkgname=tpmmanager
pkgver=0.8
pkgrel=1
pkgdesc="A TPM management software providing an easy-to-use graphical interface"
arch=('i686' 'x86_64')
url="http://projects.sirrix.com/trac/tpmmanager"
license=('GPL2')
depends=('qt>=4.4.3' 'trousers' 'openssl')
makedepends=('make' 'gcc')
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz)
md5sums=('a25f4a8e6c620a908d2c0881611f1925')

build() {
	cd $srcdir/$pkgname-$pkgver
	qmake || return 1
	make || return 1
	install -D -m755 $srcdir/$pkgname-$pkgver/bin/${pkgname} $pkgdir/usr/bin/${pkgname}
	install -D -m644 $startdir/tpmmanager.desktop $pkgdir/usr/share/applications/tpmmanager.desktop
} 
