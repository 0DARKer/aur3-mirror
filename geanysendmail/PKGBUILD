pkgname=geanysendmail
pkgver=0.4.2
pkgrel=2
pkgdesc="GeanySendMail is a little plugin for Geany IDE to send a document (e.g. a source code file) directly from Geany as attachment of a mail by using user's mailer. "
arch=('i686' 'x86_64')
license=('GPL')
url="http://frank.uvena.de/en/Geany/geanysendmail/"
groups=('community')
depends=('geany>=0.16' 'gtk2>=2.6')
source=(http://frank.uvena.de/files/geany/$pkgname-$pkgver.tar.gz)
md5sums=('d8d9abb2d46db572312401a64af24bd0')
build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

