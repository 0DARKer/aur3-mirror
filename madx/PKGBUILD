# Contributor: Yngve Inntjore Levinsen <yngve.inntjore.levinsen@cern.ch>


pkgname=madx
_pkgname=madx
pkgver=4_01_00
_pkgver=4.01.00-2
pkgrel=1
pkgdesc="a program for particle accelerator design and simulation with a long history, production (stable) version"
depends=('libx11' 'libxcb' 'glibc' 'zlib')
makedepends=('deb2targz' 'tar')
optdepends=('gnuplot: Plotting functionality')
arch=('i686' 'x86_64')
license=('Mad-X:"Standard CERN copyright statement", PTC:"Covered by F. Schmidt and E. Forest", SDDS:"Specific copyright statement distributed with Mad-X"')
url="http://cern.ch/mad"
if [ "${CARCH}" = "x86_64" ]; then
 md5sums=('0496960e9bc1688a4e86deaa6201eb19')
 _carch=amd64
elif [ "${CARCH}" = "i686" ]; then
 md5sums=('a308e121b40c908b715d3d87414e82c0')
 _carch=i386
fi
source=($pkgname-$pkgver.deb::"http://cern.ch/lcg-heppkg/debian/pool/hep/m/${pkgname}/${pkgname}_${_pkgver}_${_carch}.deb")
build() {
	install -d ${pkgdir}/usr/share/licenses/${pkgname}
	pwd
	deb2targz $pkgname-$pkgver.deb
	tar -xvzf $pkgname-$pkgver.tar.gz
	
	install -D -m644 usr/share/doc/${pkgname}/copyright ${pkgdir}/usr/share/licenses/${pkgname}/
	install -D -m644 usr/share/doc/${pkgname}/SDDS_COPYRIGHT.TXT ${pkgdir}/usr/share/licenses/${pkgname}

	install -D -m755 usr/bin/${_pkgname} ${pkgdir}/usr/bin/${_pkgname}
	}
