# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=(jack_oscrolloscope)
pkgver=0.6
pkgrel=1
pkgdesc="jack_oscrolloscope is a simple waveform viewer for JACK."
arch=('i686' 'x86_64')
url="http://das.nasophon.de/jack_oscrolloscope/"
license=('GPL')
depends=('jack' 'sdl')
makedepends=('mesa')
optdepends=('mesa')
source=(http://das.nasophon.de/download/$pkgname-$pkgver.tar.gz)
md5sums=('90746033517b1dff6e1edb27989c844e')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  make || return 1

  mkdir -p $pkgdir/usr/bin || return 1
  install -Dm755 $pkgname $pkgdir/usr/bin
}
