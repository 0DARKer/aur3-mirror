pkgname=ob-autostart
pkgver=1
pkgrel=1
pkgdesc="A simple autostart application for Openbox"
arch=('i686' 'x86_64') 
url="http://crunchbanglinux.org/forums/topic/2614/"
license=('GPL2')
depends=('python'  'pygtk')
#optdepends=('python-notify')
source=(http://www.ad-comp.be/public/projets/ob-autostart/ob-autostart)
md5sums=('9ee169d91f35561c64d04dfb4f385f0b')
build() {
		cd "$srcdir/"
		chmod +x ./ob-autostart
		mkdir -p "$pkgdir/usr/bin/" || return 1
	    cp ob-autostart "$pkgdir/usr/bin" || return 1
}	
