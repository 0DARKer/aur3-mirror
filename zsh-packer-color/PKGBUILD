# Maintainer: David Mikalova <dmikalova at gmail dot com>

pkgname=zsh-packer-color
pkgver=1
pkgrel=1
pkgdesc="Add ZSH autocomplete definitions for packer-color."
arch=('any')
url="https://gist.github.com/dmikalova/6103111"
license=('GPL')

depends=(zsh)
source=(_packer-color)

md5sums=('2672909508b16a8b5994ab3667909cc6')

package() {
  mkdir -p $srcdir/pkg/usr/share/zsh/site-functions/
  install -m644 "$srcdir/_packer-color" "$srcdir/pkg/usr/share/zsh/site-functions/_packer-color"
}
