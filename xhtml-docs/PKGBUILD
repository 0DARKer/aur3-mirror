# Contributor: Peter Simons <simons@cryp.to>
pkgname=xhtml-docs
pkgver=1.0
pkgrel=5
pkgdesc="SGML DTD and documentation for XHTML 1.0."
arch=('i686' 'x86_64')
url="http://www.w3.org/TR/xhtml1"
license=('GPL')
depends=('libxml2')
options=('docs')
source=('http://www.w3.org/TR/2002/REC-xhtml1-20020801/xhtml1.tgz'
	'profile.sh')
install=xhtml-docs.install
sha512sums=('184758381c5e2d36b80fa1e4470e864777383ff7539b48291036f8a3f1dba0b354a32142bfcc9071147fb20bcd4c0d4d541e09e865047938ab4cf9ae5a806412'
	    'c1ef5c7226f5396a60c1db6998bfbc53c15db94b14c318f08f258fcd0253e7b13015fa9820fdbdd6d64ce140a63adfa9d557801f039f0971a93604858e2958e9')

package(){
  cd "${srcdir}/xhtml1-20020801"
  mkdir -p "${pkgdir}/etc/xml"
  mkdir -p "${pkgdir}/usr/share/doc/xhtml"
  cp -rf * "${pkgdir}/usr/share/doc/xhtml" || return 1
  install -D -m 555 "${srcdir}/profile.sh" "${pkgdir}/etc/profile.d/xhtml-dtd.sh"
}
