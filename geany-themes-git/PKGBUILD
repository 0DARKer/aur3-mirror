pkgname=geany-themes-git
pkgver=20111023
pkgrel=1
pkgdesc="A collection of color schemes for geany."
arch=('any')
url="https://github.com/codebrainz/geany-themes"
license=()
depends=('geany-git')
makedepends=('git')
source=()
md5sums=()

_gitroot=https://github.com/codebrainz/geany-themes.git
_gitname=geany-themes

build()
{
	cd "$srcdir"
	msg "Connecting to GIT server...."
	rm -rf "$_gitname"
	git clone "$_gitroot" "$_gitname"
}

package()
{
	cd "$srcdir/$_gitname"
	mv alt.conf alt2.conf
	for file in *.conf; do
		install -D -m644 "$file" "$pkgdir/usr/share/geany/colorschemes/$file"
	done
}
