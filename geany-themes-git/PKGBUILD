# Maintainer: Mrk3004 <suportevg@uol.com.br>

pkgname=geany-themes-git
_programname=geany-themes
pkgver=20130121
pkgrel=1
pkgdesc="A collection of color schemes for geany."
arch=('any')
url="https://github.com/codebrainz/geany-themes"
license=('GPL')
depends=('geany-git')
makedepends=('git')
provides=('geany-themes')
_gitroot=https://github.com/codebrainz/geany-themes.git

translate_msgs() {
	if [ "${1}" == "pt" ]; then
		msg1="Conectando-se ao servidor GIT..."
		msg2="Os arquivos locais foram atualizados."
	  else
		msg1="Connecting to GIT server..."
		msg2="The local files are updated."
	fi
}

build()
{
	cd "${srcdir}"
	
	msg "$msg1"
	if [ -d ${_programname} ]; then
		cd ${_programname}
		git remote rm origin
		git remote add origin ${_gitroot}
		git fetch --all
		git reset --hard origin/master
		git clean -f -d
		msg "$msg2"
	else
		git clone ${_gitroot} ${_programname}
		cd ${_programname}
	fi
	make install COLORSCHEME_DIR="${pkgdir}/usr/share/geany/colorschemes"
}

translate_msgs "${LANG%%_*}"
