pkgname=syck-git
pkgver=1
pkgrel=1
pkgdesc="Syck"
arch=('i686' 'x86_64')
url="http://github.com/indeyets/syck"
license=()
depends=()
makedepends=('git' 're2c')
source=()
md5sums=()

_gitroot="git://github.com/indeyets/syck.git"

build() {
  msg "Connecting to GIT server..."
  if [[ -d $srcdir/$pkgname-$pkgver ]]; then
    cd $srcdir/$pkgname-$pkgver && git pull origin || return 1
  else
    git clone --reference ~/src/rcs/uzbl $_gitroot $srcdir/$pkgname-$pkgver || return 1
    cd $srcdir/$pkgname-$pkgver
  fi

  msg "GIT checkout done or server timeout"


  ./bootstrap
  ./configure
	make || return 1
	make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
