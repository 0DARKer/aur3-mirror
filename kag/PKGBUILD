# Contributor: Kirill "reflexing" Churin <reflexing@reflexing.ru>

pkgname=kag
pkgver=90
pkgrel=1
pkgdesc="King Arthur's Gold is a game to build castles and destroy your enemies, inspired by Soldat and Minecraft"
arch=('any')
url="http://kag2d.com/"
license=('custom')
depends=('desktop-file-utils' 'xdg-utils' 'libgl')
install=kag.install
source=(http://www.kag2d.com/download/kag90.tar.gz
        kag
        kag.desktop
        irrlicht_1_32x32x24.png
        LICENSE)

package() {
  cd ${srcdir}
  
  install -dm755 ${pkgdir}/usr/bin
  install -dm777 ${pkgdir}/usr/share/${pkgname}
  install -dm755 ${pkgdir}/usr/share/licenses/${pkgname}
  
  install -Dm755 kag ${pkgdir}/usr/bin/kag
  
  cp -r kag_x/* ${pkgdir}/usr/share/${pkgname}
  chmod -R go+w ${pkgdir}/usr/share/${pkgname}
  
  install -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}
  
  # Proper installation of .desktop file
  desktop-file-install -m 0644 --dir ${pkgdir}/usr/share/applications/ kag.desktop
  
  # Install icon (got from source package with "icotool -x irrlicht.ico")
  install -m644 -D irrlicht_1_32x32x24.png ${pkgdir}/usr/share/icons/hicolor/32x32/apps/kag.png
}

md5sums=('bb68472d4a0bbc17a9b6abb1f213f8f3'
         'cc45655ce4c9af8768db8b2c60ccdc7a'
         '3d3b3ea71998582cc88269d3f2da4863'
         '81f2bae53e67f9220802b1187b8f398f'
         '62ea08a5fe4b23c717ca33786578ddbb')