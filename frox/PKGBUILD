# Contributor: Nathan Owe. <ndowens.aur at gmail dot com>
pkgname=frox
pkgver=0.7.18
pkgrel=2
pkgdesc="A transparent ftp proxy that optionally supports caching"
arch=('i686' 'x86_64')
url="http://frox.sf.net"
license="GPL"
depends=('glibc')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('d4ba3a22db472922c71b0e63ca64b10b')

build() {

        cd ${srcdir}/${pkgname}-${pkgver}
		install -d ${pkgdir}/etc/${pkgname}
        ./configure --prefix=/usr --enable-http-cache --enable-local-cache --enable-virus-scan --enable-config=/etc/frox.conf
        make 
        make DESTDIR=${pkgdir} bindir=${pkgdir}/usr/bin install
		install -Dm644 src/frox.conf ${pkgdir}/etc/${pkgname}/frox.conf
}


