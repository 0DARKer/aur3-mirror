# Maintainer: Ankit Shankar <ankitshankar@gmail.com>
pkgname=opencv2.0
pkgver=2.0
pkgrel=1
pkgdesc="OpenCV library version 2.0 (required for haskell-hopencv)."
arch=('i686' 'x86_64')
url="http://opencv.willowgarage.com/wiki/Welcome"
license=('BSD')
groups=()
depends=()
makedepends=()
optdepends=()
provides=('opencv')
conflicts=('opencv')
replaces=()
backup=()
options=()
install=
changelog=
source=("http://downloads.sourceforge.net/project/opencvlibrary/opencv-unix/2.0/OpenCV-2.0.0.tar.bz2"
        "opencv2.0-patch.diff")
noextract=()
md5sums=('ed27520514baacc5edad7b06ad24130e'
         '467800d4c1686a542611880e5ca99e69')

build() {
  cd "$srcdir/OpenCV-2.0.0/"

  patch -uNp1 -i ../opencv2.0-patch.diff || return 1
  ./configure --prefix=/usr --without-python
  make
}

package() {
  cd "$srcdir/OpenCV-2.0.0/"

  make DESTDIR="$pkgdir/" install
}

