# Contributor: graysky <graysky AT archlinux dot us>
pkgname=monitorix-tmpfs
pkgver=1.1
pkgrel=1
pkgdesc='Simple script to allow monitorix to run in /dev/shm and sync data back to your hdd.'
arch=(any)
license=(GPL)
depends=('rsync' 'monitorix>=1.4.1-6')
source=(sync-monitorix)
url="https://aur.archlinux.org/packages.php?ID=34134"
install=($pkgname.install)

package() {
	install -D $pkgname "$pkgdir"/usr/bin/$pkgname
	mkdir -p "$pkgdir"/etc/cron.hourly
	ln -sf /usr/bin/$pkgname "$pkgdir"/etc/cron.hourly/sync-monitorix
}
sha256sums=('e096c9103cbcd21ed92568e64909f5b281d3a25ac4e0699000be46a6ecdf8eef')
