# Contributor: graysky <graysky AT archlinux dot us>
pkgname=monitorix-tmpfs
pkgver=1.0
pkgrel=5
pkgdesc='Simple script to allow monitorix to run in /dev/shm and sync data back to your hdd.'
arch=(any)
license=(GPL)
depends=('rsync' 'monitorix>=1.4.1-6')
source=(sync-monitorix.sh)
md5sums=('4a508ac18515ed90e84a7cd561a3e591')
url=http://dev/null
install=('readme.install')
build() {
   install -D sync-monitorix.sh $pkgdir/etc/cron.hourly/sync-monitorix.sh
}


