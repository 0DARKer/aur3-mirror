# Maintainer: wido <widomaker2k7@gmail.com>

pkgname=wisotool-svn
_pkgname=wisotool
pkgver=1485
pkgrel=1
pkgdesc="a handy winetricks-like script for automatically installing game. "
url="http://wiki.winehq.org/wisotool"
license=('LGPL')
arch=('any')
depends=('wine')
optdepends=('zenity: GUI for GNOME desktop')
provides=('wisotool')
conflicts=('wisotool')

_svnmod='wisotool'
_svntrunk='http://winezeug.googlecode.com/svn/trunk/'

build() {
      msg 'Getting sources...'
  if [ -d $_svnmod/.svn ]; then
    cd $_svnmod
    svn up -r $pkgver
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
    cd $_svnmod
  fi
  msg 'SVN checkout done or server timeout'
  
  install -Dm755 $srcdir/$_svnmod/$_pkgname $pkgdir/usr/bin/$_pkgname
}
