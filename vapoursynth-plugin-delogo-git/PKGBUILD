# Maintainer:  Gustavo Alvarez <sl1pkn07@gmail.com>

_plug=delogo
pkgname=vapoursynth-plugin-${_plug}-git
pkgver=v0.11.0.gecc7fa1
pkgrel=1
pkgdesc="Plugin for Vapoursynth: ${_plug} (GIT version)"
arch=('i686' 'x86_64')
url="http://forum.doom9.org/showthread.php?t=171252"
license=('GPL')
depends=('vapoursynth')
makedepends=('git')
provides=("vapoursynth--plugin-${_plug}")
conflicts=("vapoursynth-plugin-${_plug}")
source=("${_plug}::git+https://github.com/msg7086/VapourSynth-deLOGO.git")
md5sums=('SKIP')
_gitname="${_plug}"

pkgver() {
  cd "${_gitname}"
  echo "$(git describe --long --tags | tr - .)"
}

build() {
  cd "${_gitname}/vs_delogo"
  echo "all:
	  g++ -shared ${CXXFLAGS} -std=c++11 -fPIC -o lib${_plug}.so delogo.cpp delogo_interface.cpp delogo_yv12.cpp $(pkg-config --cflags vapoursynth)" > Makefile
  make
}

package(){
  cd "${_gitname}/vs_delogo"
  install -Dm755 "lib${_plug}.so" "${pkgdir}/usr/lib/vapoursynth/lib${_plug}.so"
  install -Dm644 ../README.md "${pkgdir}/usr/share/doc/vapoursynth/plugins/${_plug}/README.md"
}
