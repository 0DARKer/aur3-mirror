# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=wgetpkg-git
pkgver=20130415
pkgrel=2
pkgdesc="Downloads AUR packages with wget"
arch=('any')
license=('Apache')
url="https://github.com/atweiden/wgetpkg"
depends=('perl')
makedepends=('git')

_gitroot='git://github.com/atweiden/wgetpkg.git'
_gitname='wgetpkg'

# change this if you'd like to build a different branch
_gitbranch='master'

package() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin $_gitbranch
    msg "The local files are updated."
  else
    git clone -b $_gitbranch "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  install -D -m755 wgetpkg.pl "${pkgdir}/usr/bin/wgetpkg"
}
