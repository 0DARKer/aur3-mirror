depends=(perl subversion)
source=(
  http://xyne.archlinux.ca/projects/svn-export/src/svn-export-2012.12.24.tar.xz
  http://xyne.archlinux.ca/projects/svn-export/src/svn-export-2012.12.24.tar.xz.sig
)
sha512sums=(
  f1cbe5fcc17ef676149bd9b49ee40dd44c72733b3c1a228b2e1985fedcd33806d6ca91513466e54a6ba115c2b8621f64c28720c81604a7e2992ae9eec6bdb2f2
  8e2dcde88db97885e89d57668a55458fd0d81211548e312f6d9f964011c45386c7ef86f4adbb207645750c321049a9e8295be2685ad3ea82c7abb3a40f5ba5e4
