#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=svn-export
pkgver=2012.02.18.7299
pkgrel=19
pkgdesc='An svn export emulator with support for incremental exports.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/svn-export"
depends=(perl subversion)
source=(http://xyne.archlinux.ca/projects/svn-export/archives/svn-export-2012.02.18.7299.tar.xz)
sha512sums=(dd6fcf7423d338039f13d6430fb38f526f4f793284f7df28adc958fa10b563a18566bf9c6a7b0d7179781b654b46d4c0c501643088da5ea9e4cb777836be24ab)
md5sums=(28af99edcbea1a74e277ba8ccca8db58)

build () 
{ 
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
  install -D -m644 "$srcdir/$pkgname-$pkgver/man/$pkgname.1.gz" "$pkgdir/usr/share/man/man1/$pkgname.1.gz"
}


