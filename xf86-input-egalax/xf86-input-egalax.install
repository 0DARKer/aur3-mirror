_install_notes() {
    echo
    echo "(I) To start the eGTouch driver on boot:"
    echo "    initscripts - Add eGTouchD to the daemons array in /etc/rc.conf"
    echo "    systemd - Enable eGTouchD.service"
    echo
}

post_install() {
    gtk-update-icon-cache /usr/share/icons/hicolor
    _install_notes
}

post_upgrade() {
    gtk-update-icon-cache /usr/share/icons/hicolor
    _install_notes
}
