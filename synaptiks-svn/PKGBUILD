# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=synaptiks-svn
pkgver=1115995
pkgrel=1
pkgdesc="A touchpad tool for KDE"
url="http://synaptiks.lunaryorn.de/index.html"
arch=('i686' 'x86_64')
license=('BSD')
conflicts=('synaptiks')
provides=('synaptiks')
depends=('kdebase-lib' 'xf86-input-synaptics')
makedepends=('subversion' 'cmake' 'automoc4')
install=synaptiks.install
source=()
md5sums=()

_svntrunk=svn://websvn.kde.org/home/kde/trunk/playground/utils/synaptiks/
_svnmod=synaptiks

build() {
  cd ${srcdir}

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir build
  cd build
  cmake ../$_svnmod \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` \
    -DCMAKE_BUILD_TYPE=Release \
    -DWITH_XINPUT2=ON
  make  || return 1
}

package() {
  cd ${srcdir}/build
  make DESTDIR=$pkgdir install || return 1

  rm -rf ${srcdir}/build
}