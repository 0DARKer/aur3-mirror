# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=alsi
pkgver=20130216
pkgrel=1
pkgdesc="ALSI: a configurable system information tool for Arch Linux. [Inspired by Archey]"
arch=('any')
url="https://github.com/trizen/alsi"
license=('GPLv3')

makedepends=('git')
depends=('perl>=5.10.1' 'perl-data-dump')
optdepends=('scrot: for taking screenshots.')

_gitroot="git://github.com/trizen/alsi.git"
_gitname="alsi"

build() {
    msg "Connecting to github GIT server..."

    if [ -d $_gitname ]; then
        cd $_gitname && git pull origin
    else
        git clone "$_gitroot"
    fi
}

package() {
    cd $_gitname
    install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}
