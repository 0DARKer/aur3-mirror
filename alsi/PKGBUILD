pkgname=alsi
pkgver=0.4.4
pkgrel=1
pkgdesc="ALSI: a configurable system information tool for Arch Linux. [Inspired by Archey]"
arch=('any')
url="https://github.com/trizen/alsi"
license=('GPLv3')

depends=('perl>=5.14.2' 'perl-data-dump')
optdepends=('scrot: for taking screenshots.')
source=('https://github.com/trizen/alsi/archive/0.4.4.tar.gz')
md5sums=('598750a59453430c9fbbb8309c5b4124')

package() {
    cd "${pkgname}-${pkgver}"
    install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
}
