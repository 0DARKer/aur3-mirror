# Contributor: Martin Devera <devik@cdi.cz>
pkgname=mnogosearch
pkgver=3.2.38
pkgrel=2
pkgdesc="Search Engine Software"
url="http://www.mnogosearch.org/"
license="GPL"
depends=('mysql')
makedepends=()
conflicts=()
replaces=()
backup=('etc/mnogosearch/indexer.conf' 'etc/mnogosearch/langmap.conf' 'etc/mnogosearch/search.htm' 'etc/mnogosearch/stopwords.conf')
install=
source=(http://www.mnogosearch.org/Download/$pkgname-$pkgver.tar.gz)
md5sums=('2aa9a123857a3a6ee77daac762979310')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc/mnogosearch \
  	--datadir=/usr/share/mnogosearch --localstatedir=/var --with-mysql
  make || return 1
  make DESTDIR=$startdir/pkg install
  rm -f $startdir/pkg/usr/lib/*.la
  for f in ${backup[@]};do 
	  cp -vf $startdir/pkg/$f-dist $startdir/pkg/$f
  done
}
