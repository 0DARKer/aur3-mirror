# Maintainer:  M0Rf30

pkgname=hyde-git
_author=lakshmivyas
pkgver=20110428
pkgrel=1
pkgdesc="Hyde is a static website generator powered by Python & Django."
url="http://ringce.com/hyde"
arch=('i686' 'x86_64')
license=('MIT')
depends=('python2' 'python2-distribute' 'python-markdown' 
         'django' 'python2-yaml' 'pyrss2gen' 'cherrypy' 'python2-pygments')
makedepends=('python2')
conflicts=()
replaces=(hyde)
backup=()

_gitroot="git://github.com/lakshmivyas/hyde.git"
_gitname="hyde"

build() {
   cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname"  "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1
  cp -r templates $pkgdir/usr/bin
}
