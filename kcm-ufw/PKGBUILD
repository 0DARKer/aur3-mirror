# maintainer: Jekyll Wu <adaptee [at] gmail dot com >

# this PKGBUILD is based upon kcm-ufw from chakra-project

pkgname=kcm-ufw
pkgver=0.0.3
pkgrel=1
pkgdesc="KDE4 control module for ufw"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/UFW+KControl+Module?content=137789"
license=('GPL')
depends=('ufw' 'kdebase-workspace' 'polkit-kde' 'openssl' )
makedepends=('automoc4' 'cmake')
source=(http://kde-apps.org/CONTENT/content-files/137789-kcm_ufw-$pkgver.tar.bz2)
md5sums=('1652e55ab590303c989e5b166ecc8879')

build() {
  cd "${srcdir}/kcm_ufw-${pkgver}/"
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
}

package() {
  cd "${srcdir}/kcm_ufw-${pkgver}"
  make DESTDIR=${pkgdir} install || return 1
}
