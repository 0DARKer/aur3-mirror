# Maintainer: rnons <remotenonsense at gmail dot com>

pkgname=mikidown
_githubuser=rnons
pkgver=0.1.2
pkgrel=2
pkgdesc="A note taking application featuring markdown syntax"
arch=('any')
url="https://github.com/rnons/mikidown"
license=('GPL3')
depends=('python'
		 'pyqt'
		 'python-markdown')
source=(https://github.com/$_githubuser/$pkgname/tarball/v$pkgver-$pkgrel)
md5sums=('02dc3c5ad82aea683e88cd5b36c69414')

build(){
	cd "$srcdir"
	tar -xf v$pkgver-$pkgrel
	cd "$_githubuser-$pkgname-"*
	python setup.py install --root="$pkgdir" 
}
