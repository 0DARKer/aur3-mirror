# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-irc
pkgver=1.0.13
pkgrel=1
pkgdesc="Is a framework for connecting and comunicating with IRC servers."
arch=(any)
url="http://rubyforge.org/projects/ruby-irc/"
license=(GPL)
depends=('ruby')
source=(http://gems.rubyforge.org/gems/Ruby-IRC-$pkgver.gem)
noextract=(Ruby-IRC-$pkgver.gem)
md5sums=('afbccfd3d443723256e9a8ee3844d57f')

build() {
cd $srcdir

local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

gem install --ignore-dependencies -i "$pkgdir$_gemdir" Ruby-IRC-$pkgver.gem
}

