# Maintainer: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=emgd-xorg-conf
pkgver=0.1~2~16
date=201105270933
ubuflag=oneiric1
pkgrel=1
pkgdesc="emgd-xorg-conf Configuration generator for Intel EMGD"
arch=('any')
license=('custom')
url='http://ibus.googlecode.com'
depends=('python2')
source=(https://launchpad.net/~gma500/+archive/emgd/+files/${pkgname}_${pkgver}~${date}~${ubuflag}.tar.gz)
md5sums=('b6530cd9af9eda403877ab534ed2d015')

build() {
  cd ${srcdir}/recipe-${pkgver}~${date}/src
  # python2 fix
  sed -i 's|python|python2|g' ${pkgname}.py
}

package() {
  cd ${srcdir}/recipe-${pkgver}~${date}/src
  install -Dm775 ${pkgname}.py ${pkgdir}/usr/bin/${pkgname}
}
