#Maintainer: justinksr
pkgname=compicc
pkgver=0.8.5
pkgrel=1
pkgdesc="Compiz ICC colour server" 
depends=('oyranos'
'compiz-core')
arch=('i686' 'x86_64')
license=('BSD')
url="http://sourceforge.net/projects/compicc/"
source=("http://sourceforge.net/projects/compicc/files/Compicc/compicc-$pkgver.tar.bz2"
"http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/media-libs/libXcm/files/libXcm-0.4.2-buildsystem.patch")

sha512sums=('86faaff57ed2fcf846c48f630f8500fd41a8afa5ec0d91d24d7449178079e10927c0e545f99ee289dc4090aaa19bf70c9e9b0242c237ef562e671cb3dd96555d'

'a0c85b8fc5b18a9ca77d659f7ac62c9f11bcf9ec642b0e536970d061cd08fb0ec5b42e777be30319c315ddb28467fd4b8c6298ddaa75996ef5eeb7084126a049')




build() {

cd "$srcdir/$pkgname-$pkgver"
# see https://aur.archlinux.org/packages.php?ID=44984
patch -p1 < ../libXcm-0.4.2-buildsystem.patch
echo "***NOTE: if configure fails, change libdir to /usr/lib64"
echo "see oyranos pkgbuild***"
./configure --prefix=/usr --plugindir=/usr/lib/compiz --libdir=/usr/lib
make

}

package() {

cd "$srcdir/$pkgname-$pkgver"
make DESTDIR="$pkgdir/" install 
echo "~/.local/shared/color/icc/ for icc profiles"

}
