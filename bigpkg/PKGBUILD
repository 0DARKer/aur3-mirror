# Maintainer: graysky <graysky AT archlinux DOT us>
pkgname=bigpkg
pkgver=0.2.1
pkgrel=2
pkgdesc="Script to find packages that require a lot of space on your system, by Allan."
arch=(any)
url="https://bbs.archlinux.org/viewtopic.php?id=73098&p=1"
license=('GPL')
depends=('python2' 'pacman<3.5')
install=
source=(http://allanmcrae.com/scripts/$pkgname)

build() {
  # Fix python2 header
  sed -i 's_^#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' $pkgname
}

package() {
  mkdir -p $pkgdir/usr/bin
  install -m755 $pkgname $pkgdir/usr/bin/bigpkg
}
sha256sums=('bfae23c6f581e5a78f4f927a0ee69de803bf49de9380f1f76e7000c04d6702d3')
