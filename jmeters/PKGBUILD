# Maintainer: Philipp Überbacher <hollunder at gmx dot at>
pkgname=jmeters  
pkgver=0.2.0
pkgrel=1 
pkgdesc="a Jack multichannel audio level meter app similar to meterbridge \
but with correct ballistics for the VU and the PPM."
url="http://www.kokkinizita.net/linuxaudio/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('clthreads>=2.2.1' 'clxclient>=3.3.2' 'jack-audio-connection-kit' 'libpng')
source=(http://www.kokkinizita.net/linuxaudio/downloads/${pkgname}-${pkgver}.tar.bz2)
md5sums=('cd69c517698762c8139bd8a789098f7e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/source"
  
  mkdir -p "${pkgdir}/usr/bin" || return 1

  sed -i "s|PREFIX = /usr/local|PREFIX = /usr|" Makefile || return 1
  sed -i "s|/usr/bin/install|/bin/install|" Makefile || return 1
  
  make || return 1
  make PREFIX="${pkgdir}/usr" install || return 1
}
