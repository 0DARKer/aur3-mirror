# Maintainer: Philipp Überbacher <murks at lavabit dot com>
pkgname=jmeters  
pkgver=0.2.0
pkgrel=3
pkgdesc="a Jack multichannel audio level meter app similar to meterbridge \
but with correct ballistics for the VU and the PPM."
url="http://www.kokkinizita.net/linuxaudio/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('clthreads>=2.2.1' 'clxclient>=3.3.2' 'jack' 'libpng')
source=(http://kokkinizita.linuxaudio.org/linuxaudio/downloads/${pkgname}-${pkgver}.tar.bz2 DSO.patch)
md5sums=('cd69c517698762c8139bd8a789098f7e'
         'ec92b115cec7003edc6f4b734a8a1f29')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}/source"
  mkdir -p "${pkgdir}/usr/bin"

  patch -p0 < DSO.patch
  sed -i "s|PREFIX = /usr/local|PREFIX = /usr|" Makefile
  sed -i "s|/usr/bin/install|/bin/install|" Makefile
  
  make
  make PREFIX="${pkgdir}/usr" install
}
