# please post the correct checksum on the AUR page or by mail

pkgname=spring-cursed
_filename="cursed_115.sdz"
pkgver=1.15
pkgrel=3
pkgdesc="Spring engine mod about bones, undead, demons, space marines and magic settled in a futuristic environment"
arch=(any)
url="http://azaremoth.supremedesign.org/"
license=("custom")
depends=('spring')
optdepends=("spring-cursed: Maps to play")
source=("http://azaremoth.supremedesign.org/data/${_filename}")
noextract=("${_filename}")

build() {
  cd ${srcdir}
  bsdtar -x -f ${_filename} --include info.txt
}

package(){
  mkdir -p ${pkgdir}/usr/share/spring/mods/
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
  cp ${srcdir}/${_filename} ${pkgdir}/usr/share/spring/mods/
  cp ${srcdir}/info.txt ${pkgdir}/usr/share/licenses/${pkgname}/
}
# vim: sw=2:ts=2 et:
sha1sums=('da39a3ee5e6b4b0d3255bfef95601890afd80709')
