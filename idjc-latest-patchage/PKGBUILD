pkgname=idjc-latest-patchage
pkgver=0.8.2
pkgrel=5
pkgdesc='internet dj console shout- and icecast streaming program,
uses patchage instead of qjackctl -> no qt dependencies'
arch=(i686 x86_64)
url="http://web.bethere.co.uk/idjc/"
depends=('python' 'jack' 'pygtk' 'lame' 'mutagen' 'flac' 'faad2' 
'libsamplerate' 'libshout' 'vorbis-tools' 'libsndfile' 'ffmpeg' 'libmad' 
'patchage' 'speex')
makedepends=('pkgconfig')
conflicts=('idjc' 'idjc-latest')
source=(http://web.bethere.co.uk/idjc/download/idjc-$pkgver.tar.gz)
md5sums=('5c46b24500141f0d0e937ddd16aa1823')
license=('GPLv3')

build() {
	cd $startdir/src/idjc-$pkgver
            ./configure --prefix=/usr CFLAGS="-O2"
              make || return 1
                make DESTDIR=$pkgdir install
        }
