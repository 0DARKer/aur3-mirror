# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Contributor: Alexander Dunlap <alexander.dunlap at gmail dot com>
pkgname="bibutils-lib"
pkgver="4.1"
pkgrel=2
pkgdesc="Bibliography conversion (builds a shared library)"
arch=("i686" "x86_64")
url="http://www.scripps.edu/~cdputnam/software/bibutils/"
license=('GPL2')
groups=()
depends=()
makedepends=('tcsh')
install=
source=("http://www.scripps.edu/~cdputnam/software/bibutils/bibutils_${pkgver}_src.tgz" 'bibutils.patch')
noextract=()
md5sums=('1827dd4293a42a0a0ddd44161abdf067'
         '8ea486591566114d249cee0111fec099')

build() {
  cd "$srcdir/bibutils_$pkgver"

  patch -p0 < ../../bibutils.patch
  ./configure --prefix /usr || return 1
  make || return 1
  make DESTDIR=$pkgdir installlib
}

