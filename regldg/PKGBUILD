# Maintainer: Nicolas LLOBERA <nllobera@gmail.com>
pkgname="regldg"
pkgver=1.0.0
pkgrel=1
arch=('i686' 'x86_64')
url="http://regldg.com"
license=('GPL')
pkgdesc="regldg is a regular expression grammar language dictionary generator."
source=("http://regldg.com/$pkgname-$pkgver.tar.gz")
md5sums=('2c6a7e83053e4ae163330484e3dc9701')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package() {
	mkdir -p "$pkgdir/usr/bin"
	cp "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin"
}
