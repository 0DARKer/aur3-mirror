pkgname=x264-10bit
pkgver=20131030
pkgrel=2
pkgdesc="10-bit version of x264, a free library for encoding H264/AVC video streams (CLI Only)"
arch=('i686' 'x86_64')
url='http://www.videolan.org/developers/x264.html'
license=('GPL')
depends=('glibc')
makedepends=('yasm' 'git')
source=(git://git.videolan.org/x264.git#commit=c628e3bac)
md5sums=('SKIP')
_gitname=x264

build() {
  cd $_gitname

  ./configure --bit-depth=10
  make
}

package() {
  cd $_gitname

  make DESTDIR="$pkgdir" \
    bindir=/usr/bin \
    install
    
    mv $pkgdir/usr/bin/x264 $pkgdir/usr/bin/x264-10bit
}

