# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=facebook-for-linux
pkgver=1.0
pkgrel=1
pkgdesc="Facebook desktop app for Linux."
arch=('i686' 'x86_64')
url="https://launchpad.net/facebookwindoof"
license=('CCPL:No Rights Reserved')
depends=('qtwebkit')
source=("https://launchpad.net/facebookwindoof/trunk/facebookforlinux/+download/Facebook_for_linux_$pkgver.tar.gz"
         FB4Linux.desktop)
md5sums=('cb099426ed04a12582271ff0018b0131' 'c25c421d46153862a9e45f68053979aa')

prepare() {
  cd $srcdir/SRC
  qmake-qt4
}

build() {
  cd $srcdir/SRC
  make
}

package(){
  cd $srcdir/SRC
  
  # Binary
  install -Dm755 Facebook $pkgdir/usr/share/FB4Linux/FB4Linux

  # Start file
  mkdir -p $pkgdir/usr/bin
  ln -s $pkgdir/usr/share/FB4Linux/FB4Linux $pkgdir/usr/bin/FB4Linux
  
  # Desktop icon
  install -Dm644 ../FB4Linux.desktop $pkgdir/usr/share/applications/FB4Linux.desktop
  install -Dm644 res/logo/facebook-256x256.png $pkgdir/usr/share/pixmaps/FB4Linux.png
}