# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=facebook-for-linux
pkgver=1.1
pkgrel=1
pkgdesc="Facebook desktop app for Linux."
arch=('i686' 'x86_64')
url="https://launchpad.net/facebookwindoof"
license=('CCPL:No Rights Reserved')
depends=('qtwebkit')
source=("https://launchpad.net/facebookwindoof/trunk/facebookforlinux/+download/Fb4linux-src-$pkgver-%20touch-and-mouse%20.tar.gz"
         FB4Linux.desktop)
md5sums=('63118702eb0aa751121006ebc63abb29' 'c25c421d46153862a9e45f68053979aa')

prepare() {
  cd $srcdir/src
  qmake-qt4
}

build() {
  cd $srcdir/src
  make
}

package(){
  cd $srcdir/src
  
  # Binary
  install -Dm755 Facebook $pkgdir/usr/bin/FB4Linux
  
  # Desktop icon
  install -Dm644 ../FB4Linux.desktop $pkgdir/usr/share/applications/FB4Linux.desktop
  install -Dm644 res/logo/facebook-256x256.png $pkgdir/usr/share/pixmaps/FB4Linux.png
}