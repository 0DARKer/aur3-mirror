pkgname="radare2-swig"
pkgver=0.7
pkgrel=2
pkgdesc="radare2 language bindings"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3')
depends=('python' 'lua' 'radare2')
source=(http://www.radare.org/get/${pkgname}-${pkgver}.tar.gz)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	./configure --prefix=/usr || return 1

	make -j1 || return 1
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make DESTDIR=${pkgdir} install || return 1
  
  # Fix the python-module installation
  # It's python2 not python3
  cd ${pkgdir}/usr/lib
  mv python3.2 python2.7
}
md5sums=('c6cc59410caa916c027888d9c4f46524')
