pkgname="radare2-swig"
pkgver=0.6
pkgrel=2
pkgdesc="radare2 swig files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3')
depends=('valaswig>=0.2')
optdeps=('libtcc'
	 'lua')
source=(http://www.radare.org/get/beta/${pkgname}-${pkgver}.tar.gz)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	./configure --prefix=/usr || return 1

#	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"
	make -j1 || return 1
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make DESTDIR=${pkgdir} install || return 1
}
sha256sums=('57e6e44035a5b7b38a67a2e4d9c9a0c8ae8c13c43776a1b31807f4ca08fff2a7')
