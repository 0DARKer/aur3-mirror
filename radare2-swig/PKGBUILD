pkgname="radare2-swig"
pkgver=0.6
pkgrel=3
pkgdesc="radare2 swig files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3')
depends=('valaswig')
optdeps=('libtcc'
	 'lua')
source=(http://www.radare.org/get/${pkgname}-${pkgver}.tar.gz)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	./configure --prefix=/usr || return 1

	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"
	make -j1 || return 1
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make DESTDIR=${pkgdir} install || return 1
}
sha256sums=('8f69695f9ba14aef487ec8baf0c4b0852aa1a3a69bee7294a8d12de99cb63048')
