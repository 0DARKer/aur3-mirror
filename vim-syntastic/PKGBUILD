# Maintainer: Zhang Li <richselian at gmail.com>

pkgname=vim-syntastic
pkgver=2.3.0
_scriptid=17476
pkgrel=2
pkgdesc="vim automatic syntax checking."
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=2736"
license=('MIT')
depends=("vim")
groups=('vim-plugins')
install=vimdoc.install
source=("${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}")

md5sums=('d9ff62adca24937c0aebe2e295cad26b')

package() {
    cd $srcdir
    mkdir -p ${pkgdir}/usr/share/vim/vimfiles/
    cp --preserve=mode --recursive autoload doc plugin syntax_checkers ${pkgdir}/usr/share/vim/vimfiles/
    chmod 755 ${pkgdir}/usr/share/vim/vimfiles/doc/
}
