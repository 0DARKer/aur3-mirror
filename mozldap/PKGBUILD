# Maintainer: Sergio A. Morales <sergiomorales@archlinux.cl>
pkgname=mozldap
pkgver=6.0.6
pkgrel=5
pkgdesc="Mozilla LDAP C SDK"
arch=('i686' 'x86_64')
url="https://wiki.mozilla.org/LDAP_C_SDK"
license=('GPL3')
depends=('nss>=3.12' 'svrcore>=4.0.4' 'nspr>=4.8' 'libsasl')
source=("ftp://ftp.mozilla.org/pub/mozilla.org/directory/c-sdk/releases/v6.0.6/src/$pkgname-$pkgver.tar.gz" 'mozldap.install')
md5sums=('1d6ddb80a7435ba117c6d9336b8ba21a' '7e1c2f3be723f136967dd721debfe44c')
install=mozldap.install
_nss=3.12
_nspr=4.8
_svrcore=4.0.4


build() {
    cd "$srcdir/$pkgname-$pkgver/mozilla/directory/c-sdk"
    [ "${CARCH}" = "x86_64" ] && EXTRAFEATURES=" --enable-64bit"
    ./configure  --with-sasl --enable-clu --with-system-svrcore --disable-debug --enable-optimize ${EXTRAFEATURES}

    BUILD_OPT=1
    export BUILD_OPT
    
    [ "${CARCH}" = "x86_64" ] && EXTRAFLAG="USE_64=1"
    make ${EXTRAFLAG} || return 1
    
    ## Install
    mkdir -p $pkgdir/usr/{lib,include}/$pkgname

    for i in $(ls $srcdir/$pkgname-$pkgver/mozilla/dist/lib/)
    do
    install -m 644 $srcdir/$pkgname-$pkgver/mozilla/dist/lib/$i $pkgdir/usr/lib/
    done

    for j in "ldapsearch" "ldapmodify" "ldapdelete" "ldapcmp" "ldapcompare" "ldappasswd"
    do
    install -m 755 $srcdir/$pkgname-$pkgver/mozilla/dist/bin/$j $pkgdir/usr/lib/$pkgname
    done
    
    for file in $srcdir/$pkgname-$pkgver/mozilla/dist/public/ldap/*.h
    do
    install -p -m 644 $file $pkgdir/usr/include/$pkgname
    done

    ## PKGCONFIG
    mkdir -p $pkgdir/usr/lib/pkgconfig
    cat $srcdir/$pkgname-$pkgver/mozilla/directory/c-sdk/mozldap.pc.in \
    | sed -e "s,%libdir%,/usr/lib/mozldap,g" \
          -e "s,%prefix%,/usr,g" \
          -e "s,%major%,6,g" \
          -e "s,%minor%,0,g" \
          -e "s,%submin%,60,g" \
          -e "s,%libsuffix%,60,g" \
          -e "s,%bindir%,/usr/lib/$pkgname,g" \
          -e "s,%exec_prefix%,/usr,g" \
          -e "s,%includedir%,/usr/include/$pkgname,g" \
          -e "s,%NSPR_VERSION%,$_nspr,g" \
          -e "s,%NSS_VERSION%,$_nss,g" \
          -e "s,%SVRCORE_VERSION%,$svrcore,g" \
          -e "s,%MOZLDAP_VERSION%,$pkgver,g" \
    > $pkgdir/usr/lib/pkgconfig/mozldap6.pc

}
