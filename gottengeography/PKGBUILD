pkgname=gottengeography
pkgver=1.0
pkgrel=1
pkgdesc="Automagically geotag photos with GPX data."
arch=(any)
url="http://exolucere.ca/gottengeography"
license=('GPL3')
depends=('python2>=2.7' 'python2<2.8' 'pyexiv2>=0.2' 'pygobject>=2.28.0' 'libchamplain>=0.9' 'desktop-file-utils')
install=gottengeography.install
source=($pkgname-$pkgver.tar.gz::https://github.com/robru/gottengeography/tarball/release-$pkgver)
sha512sums=('585055bcf3af56a2300e336b3b6c12b55a08eeca3aa6479457218812f8a6a70ad77eca37818c750d86ac2aff76b6fb3ae4b5b39cae5b928b43dcf21788db4cc1')

package() {
	local dirname=$(tar tf "$srcdir/$pkgname-$pkgver.tar.gz" | sed 1q);
	cd "$srcdir/$dirname"
	python2 setup.py install --root="$pkgdir" --optimize=1
}
