pkgname=gottengeography
pkgver=2.2
pkgrel=2
pkgdesc='Automagically geotag photos with GPX data.'
arch=('any')
url='http://exolucere.ca/gottengeography/'
license=('GPL3')
depends=('python2>=2.7' 'python2<2.8' 'python2-exiv2>=0.3' 'python2-gobject>=3.0.3' 'python2-dateutil>=1.5' 'libchamplain>=0.12.2' 'desktop-file-utils' 'hicolor-icon-theme' 'dconf')
makedepends=('python2-distutils-extra')
install="$pkgname.install"
source=("$pkgname-$pkgver.tar.gz::https://github.com/robru/gottengeography/tarball/v$pkgver")
sha256sums=('c5b294aee54a15480801f14264904aafb74a54ab6e5f3a74412a7044c7e75ef6')

package() {
  local dirname=$(tar tf "$srcdir/$pkgname-$pkgver.tar.gz" | sed 1q);
  cd "$srcdir/$dirname"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

