pkgname=python-feedgenerator
pkgver=1.5
pkgrel=1
pkgdesc="Standalone version of django.utils.feedgenerator (python3)."
url="http://pypi.python.org/pypi/feedgenerator"
arch=('any')
license=('GPL')
depends=('python' 'python-pytz' 'python-six')
makedepends=('setuptools')
source=('http://pypi.python.org/packages/source/f/feedgenerator/feedgenerator-1.5.tar.gz')
md5sums=('7f9b346e613700b3be6b215d3ed7b278')
         
build() {
  cd $srcdir/feedgenerator-${pkgver}
  
  python setup.py install --prefix=/usr --root=$startdir/pkg || return 1
}
