pkgname=ttf-lekton
pkgver=1.0
pkgrel=1
pkgdesc="Lekton font"
arch=('any')
depends=('fontconfig' 'xorg-font-utils')
url='http://www.fontsquirrel.com/fonts/lekton'
source=("http://www.fontsquirrel.com/fonts/download/lekton")
md5sums=('fc388c1ab3b11740813810962171211f')
install=$pkgname.install

package() {
  install -d "$pkgdir/usr/share/fonts/TTF"
  cp -dpr --no-preserve=ownership "$srcdir"/*.ttf "$pkgdir/usr/share/fonts/TTF/"
}
