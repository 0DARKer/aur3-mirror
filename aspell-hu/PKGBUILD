# Contributor: Peter Avramucz <muczy@freestart.hu>
pkgname=aspell-hu
pkgver=0.99.4.2
pkgrel=2
pkgdesc="Hungarian dictionary for aspell"
arch=('i686' 'x86_64')
url="http://aspell.net/"
license=('GPL')
depends=('aspell')
makedepends=('aspell')
source=(ftp://ftp.gnu.org/gnu/aspell/dict/hu/aspell6-hu-${pkgver}-0.tar.bz2)
md5sums=('4f4e1e98019a89d0ebf43ec59ae68254')

build() {
	cd "$srcdir/aspell6-hu-$pkgver-0"

	./configure || return 1

	make || return 1
	make DESTDIR=$pkgdir/ install
}

