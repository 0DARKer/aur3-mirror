url="http://search.cpan.org/dist/HTML-Template-Pro/"
license=('PerlArtistic')
source=('http://search.cpan.org/CPAN/authors/id/V/VI/VIY/HTML-Template-Pro-0.9507.tar.gz')
md5sums=('e7d80dd88844b3f58054291c58580b5d')
