#Contributor: Nebulosa <nebulosa2007 na yandekse>

pkgname=pacmanxg-bin
pkgver=2.9
pkgrel=1
pkgdesc="Yet another GUI for pacman and yaourt"
arch=('i686' 'x86_64')
url="http://almin-soft.nx0.ru/openiandifree/pacmanxg.html"
license=( 'GPL2' )
if [ "${CARCH}" = 'x86_64' ]; then
depends=('pacman' 'lib32-libx11' 'lib32-gcc-libs')
elif [ "${CARCH}" = 'i686' ]; then
depends=('pacman' 'libx11' 'gcc-libs')
fi
optdepends=('yaourt: AUR support'
	    'gksu: for GUI enter pass')
source=("http://almin-soft.nx0.ru/media/files/binaries/pacmanXG.tar.bz2"
	"pacmanxg.desktop")
md5sums=('fd1f24153180fbdb1b5215ad93eb2f53'
	 '6b0b5f743113d816cb276f699524f2c1')

build() {

  install -d $pkgdir/opt/pacmanxg
  install -D -m755 pacmanXG $pkgdir/opt/pacmanxg/pacmanxg
  install -D -m644 pacmanxg.desktop $pkgdir/usr/share/applications/pacmanxg.desktop
}
