arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-data-optlist>=0.104' 'perl-namespace-clean')
makedepends=()
url='http://search.cpan.org/dist/syntax'
source=('http://search.cpan.org/CPAN/authors/id/P/PH/PHAYLON/syntax-0.003.tar.gz')
md5sums=('e639741545d2fb710b1350c7761827a4')
