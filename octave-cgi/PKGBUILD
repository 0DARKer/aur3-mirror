pkgname=octave-cgi
pkgver=0.1.0
pkgrel=1
pkgdesc="Common Gatway Interface for Octave"
arch=(any)
url="http://octave.sourceforge.net/cgi/"
license=('GPL2+')
groups=('octave-forge')
depends=('octave>=3.4.0')
makedepends=()
optdepends=()
backup=()
options=()
install=$pkgname.install
_archive=cgi-$pkgver.tar.gz
source=("http://downloads.sourceforge.net/octave/$_archive")
noextract=("$_archive")
md5sums=('d9a30c39a52f408bcc288b8ba085360a')

build() {
  cd "$srcdir"
  mkdir -p builddir
  octave -q -f --eval "pkg build -verbose -nodeps builddir $_archive"
}

package() {
  mkdir -p "$pkgdir/usr/share/octave/packages"
  mkdir -p "$pkgdir/usr/lib/octave/packages"
  cp "$srcdir/builddir/$_archive" "$pkgdir/usr/share/octave/cgi.tar.gz"
}
