#Contributor: Hans Janssen <janserv at gmail dot com>

pkgname=fgrun
pkgver=3.0.0
pkgrel=1
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph')
makedepends=('cmake' 'boost' 'simgear')
url="https://gitorious.org/fg"
source=("https://gitorious.org/fg/fgrun/archive/e030882cdb7917038cfeb09d3808505180ec4dc5.tar.gz")
sha256sums=('df8299cae9334fb6563be2cf0f78cfe397b569a3d64fbd3a39a26034132ab5d8')

build() {
	cd ${srcdir}/fg-${pkgname}
	cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd ${srcdir}/fg-${pkgname}
	make DESTDIR="${pkgdir}" install
}
