#Contributor: Hans Janssen <janserv@gmail.com>
pkgname=fgrun
pkgver=1.6.0
pkgrel=1
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph' 'simgear')
makedepends=('boost')
url="http://sourceforge.net/projects/fgrun"
source=(http://downloads.sourceforge.net/sourceforge/fgrun/$pkgname-$pkgver.tar.gz)
sha256sums=('67213a9e66a5e66a73f2f00ff4e3101d41289de3ea08058df6899c958c3abe31')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr --with-fltk=/usr
	make
	make DESTDIR=$startdir/pkg install
}

