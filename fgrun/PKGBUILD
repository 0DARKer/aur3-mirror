#Contributor: Hans Janssen <janserv@gmail.com>
pkgname=fgrun
pkgver=1.5.2
pkgrel=2
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph')
url="http://sourceforge.net/projects/fgrun"
source=(http://dl.sourceforge.net/sourceforge/fgrun/$pkgname-$pkgver.tar.gz gcc461.patch)
md5sums=('cee32c8359a61e0db3156f7bd271321c'
         'ab66d5a8058be12b2f6e2e122d86d35c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -Np0 < $srcdir/gcc461.patch
	./configure --prefix=/usr --with-fltk=/usr
	make
	make DESTDIR=$startdir/pkg install
}
