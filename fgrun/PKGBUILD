#Contributor: Hans Janssen <janserv at gmail dot com>

pkgname=fgrun
pkgver=1.7.0
pkgrel=1
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph')
makedepends=('cmake' 'boost' 'simgear>=2.10.0')
url="http://sourceforge.net/projects/fgrun"
source=("http://dl.dropbox.com/u/26412141/fg-fgrun-release_1.7.0.tar.gz")
sha256sums=('768d2c5353e6260d1b5625781f66cd46f8fff9f8f1607ba1bd370c778193900c')

build() {
	cd $srcdir/fg-$pkgname
	cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd $srcdir/fg-$pkgname
	make DESTDIR="${pkgdir}" install
}
