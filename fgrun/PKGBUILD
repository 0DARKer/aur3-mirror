#Contributor: Hans Janssen <janserv@gmail.com>
pkgname=fgrun
pkgver=1.5.2
pkgrel=1
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('flightgear' 'fltk' 'openscenegraph')
makedepends=('boost')
url="http://sourceforge.net/projects/fgrun"
source=(http://downloads.sourceforge.net/sourceforge/fgrun/$pkgname-$pkgver.tar.gz)
md5sums=('cee32c8359a61e0db3156f7bd271321c')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$startdir/pkg install
}

