#Contributor: Hans Janssen <janserv@gmail.com>
pkgname=fgrun
pkgver=1.5.2
pkgrel=3
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph' 'simgear')
makedepends=('boost')
url="http://sourceforge.net/projects/fgrun"
source=(http://downloads.sourceforge.net/sourceforge/fgrun/$pkgname-$pkgver.tar.gz gcc461.patch)
sha256sums=('32434caa1b3ecf2046872855da461b8b3d5dc7172760bb6db9ab8777bccc8720'
            '1cbbb0693f1245325d82bd5409a8ccd2acf13401dcaa53422e43f013eb10b356')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -Np0 < $srcdir/gcc461.patch
	./configure --prefix=/usr --with-fltk=/usr
	make
	make DESTDIR=$startdir/pkg install
}
