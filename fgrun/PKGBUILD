#Contributor: Hans Janssen <janserv at gmail dot com>

pkgname=fgrun
pkgver=3.4.0
pkgrel=2
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph')
makedepends=('cmake' 'boost' 'simgear')
url="http://sourceforge.net/projects/flightgear/"
source=("http://sourceforge.net/code-snapshots/git/f/fl/flightgear/fgrun.git/flightgear-fgrun-7cda6e094cc5d45380fe4190e9c8cf333e496373.zip")
sha256sums=('38e6441d7e133484f2692dc1b8af28e4cf5341f7b4f62e13a146e9c2d1529ffc')

build() {
	cd ${srcdir}
	cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd ${srcdir}
	make DESTDIR="${pkgdir}" install
}

