#Contributor: Hans Janssen <janserv at gmail dot com>

pkgname=fgrun
pkgver=3.2.0
pkgrel=1
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph')
makedepends=('cmake' 'boost' 'simgear')
url="https://gitorious.org/fg"
source=("https://gitorious.org/fg/fgrun/archive/e038cc9be4955e356a6be8eb04dde58e4c24a51f.tar.gz")
sha256sums=('d326c5d00fc0a12e03ae548ae980adaecf6c447ae804a4207d312b6c031df06b')

build() {
	cd ${srcdir}/fg-${pkgname}
	cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd ${srcdir}/fg-${pkgname}
	make DESTDIR="${pkgdir}" install
}
