#Contributor: Hans Janssen <janserv at gmail dot com>

pkgname=fgrun
pkgver=3.4.0
pkgrel=1
pkgdesc="Frontend for FlightGear."
arch=('i686' 'x86_64')
license=('GPL')
depends=('fltk' 'openscenegraph')
makedepends=('cmake' 'boost' 'simgear')
url="https://gitorious.org/fg"
source=("https://gitorious.org/fg/fgrun/archive/7cda6e094cc5d45380fe4190e9c8cf333e496373.tar.gz")
sha256sums=('b64b40a22443385c2d9818870009ca7398f1d459bd2a5eb10e0c1955ef7da6ab')

build() {
	cd ${srcdir}/fg-${pkgname}
	cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd ${srcdir}/fg-${pkgname}
	make DESTDIR="${pkgdir}" install
}

