pkgname=akonadi-git
_gitname=akonadi
pkgver=v1.9.1.37.g1246b31
pkgrel=1
pkgdesc='A cross-desktop storage service for PIM data and meta data providing concurrent read, write, and query access.'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('shared-mime-info' 'boost-libs' 'mariadb' 'soprano-git' 'qt4')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'boost' 'git')
conflicts=('akonadi')
provides=('akonadi')
groups=('kde-git')
source=('git://anongit.kde.org/akonadi')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $srcdir
  
  msg "GIT checkout done"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi
  mkdir $srcdir/build
  cd $srcdir/build
  cmake $srcdir/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}