pkgname=mate-backgrounds
pkgver=2011.12.16
pkgrel=1
pkgdesc="Background images and data for MATE"
arch=('any')
license=('GPL')
url="http://matsusoft.com.ar/projects/mate/"
makedepends=('intltool' 'mate-common')
groups=('mate')
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('751852daf08b512a625db9ccb7fdc5a65488e1dd34c2a393ad32e83f3929e78f')



build() {
	cd "${srcdir}"

	./autogen.sh \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var || return 1

	make || return 1
}

package() {
	cd "$srcdir"

	make DESTDIR="$pkgdir" install || return 1
}
