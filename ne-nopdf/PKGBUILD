pkgname=ne-nopdf
_pkgname=ne
pkgver=2.0.3
pkgrel=1
pkgdesc="the nice editor, without pdf document"
arch=('i686' 'x86_64')
url="http://ne.dsi.unimi.it"
license=('GPL')
depends=('glibc' 'ncurses' 'texinfo')
replaces=('ne')
conflicts=('ne')
options=('!makeflags')
install=ne.install
source=(http://ne.dsi.unimi.it/${_pkgname}-${pkgver}.tar.gz)
md5sums=('16ed5c974adb8255a693f8a3b6e91071')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  sed -i ',(cd doc; make),d' makefile
  #sed -i 's,local/lib/ne,lib/ne,g' src/makefile
  cd src make NE_GLOBAL_DIR=/usr/lib/ne
  cd -
  make PREFIX="${pkgdir}/usr" install || return 1
}
