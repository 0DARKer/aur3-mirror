# Maintainer: Tianjiao Yin <ytj000@gmail.com>
pkgname='yapf-git'
pkgver=r107.bc2437b
pkgrel=1
pkgdesc="A formatter for Python files"
arch=('any')
url="https://github.com/google/yapf"
license=('Apache')
depends=('python')
makedepends=('git')
provides=("yapf")
conflicts=("yapf")
source=('yapf::git+https://github.com/google/yapf.git')
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/yapf"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd "$srcdir/yapf"
    python setup.py -q install --root="$pkgdir" --optimize=1

    mkdir -p $pkgdir/usr/bin
    echo "#!/usr/bin/env python" > "$pkgdir/usr/bin/yapf"
    chmod 755 "$pkgdir/usr/bin/yapf"
    cat "$srcdir/yapf/yapf/__main__.py" >> "$pkgdir/usr/bin/yapf"
}
