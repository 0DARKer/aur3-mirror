# Contributor: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=writer2latex
pkgver=05
pkgrel=4
pkgdesc="Converter for OO-Writer-documents to LaTeX"
arch=('any')
url="http://www.hj-gym.dk/~hj/writer2latex"
license=('LGPL')
depends=('jre')
makedepends=('apache-ant>=1.5')
source=(http://www.hj-gym.dk/~hj/$pkgname/$pkgname$pkgver.zip)
md5sums=('aaff584834819cf8de9cf85d1f5280c1')

build() {
  cd $startdir/src/$pkgname$pkgver
  sed -i 's+$HOME/writer2latex05+/usr/share/writer2latex+' w2l 
  chmod 755 $startdir/src/$pkgname$pkgver/w2l
  ant all
  install -d $startdir/pkg/usr/share/$pkgname
  cp -R $startdir/src/$pkgname$pkgver/* $startdir/pkg/usr/share/$pkgname
  mkdir $startdir/pkg/usr/bin
  cd $startdir/pkg/usr/bin
  ln -s /usr/share/$pkgname/w2l w2l
}
