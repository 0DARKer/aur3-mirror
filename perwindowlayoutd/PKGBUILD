# Maintainer: Anton Butanaev <anton.butanaev@gmail.com>
pkgname=perwindowlayoutd
pkgver=0.1
pkgrel=3
epoch=
pkgdesc="Keeps per-window keyboard layout X11"
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/perwindowlayout/"
license=('GPL')
groups=()
depends=(libx11)
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://citylan.dl.sourceforge.net/project/perwindowlayout/perWindowLayoutD-$pkgver.tar.gz)
noextract=()
md5sums=(29d02dc24f2383cf796803b0cea13bf1)

build() {
  tar xvzf perWindowLayoutD-$pkgver.tar.gz
  cd "$srcdir/perWindowLayoutD-$pkgver"
  ./configure --prefix=/usr
  make
}

check() {
  cd "$srcdir/perWindowLayoutD-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/perWindowLayoutD-$pkgver"
  make DESTDIR="$pkgdir/" install
}
