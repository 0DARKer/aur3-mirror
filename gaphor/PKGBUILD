pkgname=gaphor
pkgver=0.16.0
pkgrel=1
pkgdesc="An easy to use modeling environment for UML design"
arch=('i686' 'x86_64')
url="http://gaphor.sourceforge.net"
license=('GPL')
depends=('gaphas>=0.7.0' 'zope-component>=3.4.0')
makedepends=('python2-distribute' 'python-nose>=0.10.4' 'python-sphinx>=0.6.4')
source=(http://pypi.python.org/packages/source/g/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('b209637ce4e9f3a6705c5eab0bc18eb1')
#options=(force)

build() {
    cd ${srcdir}/$pkgname-$pkgver
    python2 setup.py install --root=${pkgdir} --prefix=/usr || return 1
}
