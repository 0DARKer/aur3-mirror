# Maintainer: almostalive <almostalive2003 at gmail dot com>

pkgname=libretro-yabause-git
pkgver=20130117
pkgrel=1
pkgdesc="libretro implementation of Yabause (Sega Saturn)."
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/yabause-libretro"
license=('custom')
makedepends=('git')

_gitroot="git://github.com/libretro/yabause-libretro.git"
_gitname="yabause-libretro"

build() 
{
   cd $srcdir

   msg "Cloning yabause-libretro from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-yabause.so
}

