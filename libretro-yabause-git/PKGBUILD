# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-yabause-git
_gitname=yabause
pkgver=2013.04.08_ddb15c9
pkgrel=1
pkgdesc="libretro implementation of Yabause. (Sega Saturn)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/yabause"
license=('custom')
makedepends=('git')
source=('git://github.com/libretro/yabause.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname/libretro
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro/libretro.so $pkgdir/usr/lib/libretro/libretro-yabause.so
}

