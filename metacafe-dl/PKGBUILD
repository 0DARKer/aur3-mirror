pkgname=metacafe-dl
pkgver=2008.06.07
pkgrel=1
pkgdesc="A small command-line program to download videos from MetaCafe.com"
arch=('i686' 'x86_64')
url="http://www.arrakis.es/~rggi3/metacafe-dl"
license=('MIT')
depends=('python')
makedepends=('awk')
source=(http://www.arrakis.es/~rggi3/metacafe-dl/metacafe-dl)
md5sums=('498a2e88aa02998f4cd27754412dad97')

build()  {
    mkdir -p $startdir/pkg/usr/share/licenses/metacafe-dl
    awk /Copy/,/import/ metacafe-dl  | grep -v import \
        | sed -re 's/#?//'  > $startdir/pkg/usr/share/licenses/metacafe-dl/COPYING

    install -D -m755 $startdir/src/metacafe-dl $startdir/pkg/usr/bin/metacafe-dl
}
