# Contributor: Cilyan Olowen <gaknar@gmail.com>
pkgname=python-webob
pkgver=0.9.8
pkgrel=1
pkgdesc="WebOb provides objects for HTTP requests and responses."
arch=('any')
url="http://pythonpaste.org/webob/"
license=('MIT')
depends=('python')
makedepends=('setuptools')
source=(http://pypi.python.org/packages/source/W/WebOb/WebOb-${pkgver}.tar.gz)
md5sums=('07d1a1a4b0bf0faa67cb6638c632ea61')

build() {
  cd "$srcdir/WebOb-${pkgver}"
  python setup.py install --prefix=/usr --root="$pkgdir" --no-compile
  install -d "$pkgdir/usr/share/licenses/$pkgname"
  install "$srcdir/WebOb-${pkgver}/docs/license.txt" \
          "$pkgdir/usr/share/licenses/$pkgname"
}
