# Contributor: Jeremy Cowgar <jeremy@cowgar.com>
pkgname=falcon
pkgver=0.8.14.2
pkgbasever=0.8.14
pkgrel=1
pkgdesc="a general purpose untyped language, based on a Virtual Machine executing portable pseudo codes"
license=('custom:"Falcon Programming Language License"')
url="http://falconpl.org"
source=(http://www.falconpl.org/project_dl/_official_rel/Falcon-$pkgver.tar.gz)
md5sums=('a08f0c7aa3a233395ddb3875eae4e7a9')
arch=(i686 x86_64)
makedepends=('cmake')
depends=('zlib' 'pcre' 'bison')

build() {
    cd $startdir/src/Falcon-$pkgbasever
    ./build.sh -p $startdir/pkg/usr -f /usr || return 1
    ./build.sh -i || return 1
    mkdir -p $startdir/pkg/usr/share/licenses/falcon || return 1
    cp LICENSE $startdir/pkg/usr/share/licenses/falcon || return 1
}

