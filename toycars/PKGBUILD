
# Maintainer: Dany Martineau <dany.luc.martineau gmail.com>

pkgname=toycars
pkgver=0.3.10
pkgrel=1
pkgdesc="Top down physics based car racing game"
arch=('i686' 'x86_64')
url="http://toycars.sourceforge.net/ToyCars/Welcome.html"
license=('GPL')
makedepends=('make')
depends=('sdl_image' 'fmodex' 'fltk')
source=(http://downloads.sourceforge.net/toycars/$pkgname-$pkgver.tar.gz \
        toycars.patch toycars.desktop toycars_track_editor.desktop toycars_vehicle_editor.desktop)
md5sums=('6b0b7506ee5623081e002c8690c5bc78'
         '82993952919131c296918e4856fd31d9'
         'd4276bdd270a21ef1338a59ff7e9c48c'
         '9470958c8cda299f64243a2896e44e25'
         'b717cd72590ad918c39f1518e49cacd6')
build() {
cd ${srcdir}/$pkgname-$pkgver
patch -p1 < ../toycars.patch || return 1
./configure --prefix=/usr
make || return 1
make DESTDIR=${pkgdir} install
cp toycars/celica-render.png ${pkgdir}/usr/share/toycars
mkdir -p ${pkgdir}/usr/share/applications
cp ${srcdir}/{toycars.desktop,toycars_track_editor.desktop,toycars_vehicle_editor.desktop} ${pkgdir}/usr/share/applications
}
