pkgname=ttf-against-myself
pkgver=1.0
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="Against Myself font from dafont.com"
arch=('any')
source=('http://img.dafont.com/dl/?f=against_myself')
md5sums=('1e7f82c1619157cb543a3b78bb3c3d38')
install=$pkgname.install
license=("custom: Free for personal use")
url=("http://www.dafont.com/against-myself.font")

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/*.ttf $pkgdir/usr/share/fonts/TTF
}
