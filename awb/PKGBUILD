# Contributor: Jared Henley <multixrulz at users dot sourceforge dot net>

pkgname=awb
pkgver=0.2.4
pkgrel=1
pkgdesc="AsciiDoc Website Builder - build a website using AsciiDoc markup"
arch=('any')
url="http://awb.sourceforge.net"
license="GPL"
depends=('python' 'asciidoc')
source=(http://downloads.sourceforge.net/project/awb/awb/$pkgver/$pkgname-$pkgver.tar.bz2)
md5sums=('08163aac54d3241c93c8131874cc8afa')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    install -m 555 awb -D "$pkgdir/usr/bin/awb"
    install -m 444 manual.html -D "$pkgdir/usr/share/doc/$pkgname-$pkgver/manual.html"
    install -m 444 manual.txt -D "$pkgdir/usr/share/doc/$pkgname-$pkgver/manual.txt"
}
