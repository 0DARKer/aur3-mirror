# Maintainer: Lauretn Carlier <lordheavym@gmail.com>

pkgname=libtxc_dxtn_s2tc
pkgver=0.0.20121013
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="A replacement for the texture compression library for Mesa"
url="https://github.com/divVerent/s2tc"
license=(MIT)
depends=(mesa)
options=(!libtool)
provides=('libtxc_dxtn')
conflicts=('libtxc_dxtn')
source=(dxtn_s2tc.zip::https://nodeload.github.com/divVerent/s2tc/zipball/master)
md5sums=('87c90af18a8ead46342e7ae67674178c')

build() {
  cd "$srcdir"/divVerent-s2tc-*

  sh autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"/divVerent-s2tc-*

  make DESTDIR="$pkgdir" install
}
