# Mantainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname="dkms-nvidia-beta"
_modname=nvidia
pkgver=275.09
pkgrel=1
pkgdesc="NVIDIA dynamic kernel module (DKMS) drivers, utilities and libraries for kernel26. BETA DRIVERS"
arch=('any')
url="http://www.nvidia.com/"
license=('custom')
depends=("nvidia-utils-beta=${pkgver}" "lib32-nvidia-utils-beta=${pkgver}")
conflicts=('nvidia')
provides=("nvidia=${pkgver}")
install="nvidia.install"

if [ "$CARCH" = "i686" ]; then
    _arch='x86'
    _pkg="NVIDIA-Linux-${_arch}-${pkgver}"
    source=("ftp://download.nvidia.com/XFree86/Linux-${_arch}/${pkgver}/${_pkg}.run")
    md5sums=('a47314598f42ff3473eba958791d4df3')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='x86_64'
    _pkg="NVIDIA-Linux-${_arch}-${pkgver}-no-compat32"
    source=("ftp://download.nvidia.com/XFree86/Linux-${_arch}/${pkgver}/${_pkg}.run")
    md5sums=('df53d690588b9728dd8411a4aec91fd8')
fi

source[1]="dkms.conf"
source[2]="nvidia.install"
md5sums[1]='dd27161082323efb4c0a5adef710d5f7'
md5sums[2]='57b8de81fd54d6df597ff63efa641005'


build() {
    cd $srcdir
    sh ${_pkg}.run --extract-only
}

package() {
    mkdir -p ${pkgdir}/usr/src/${_modname}-${pkgver}
    cp -a ${srcdir}/${_pkg}/kernel/* ${pkgdir}/usr/src/${_modname}-${pkgver}
    install -d -m755 ${pkgdir}/etc/modprobe.d
    #echo "blacklist nouveau" >> ${pkgdir}/etc/modprobe.d/nouveau_blacklist.conf
    cp ${srcdir}/dkms.conf ${pkgdir}/usr/src/${_modname}-${pkgver}/
}