# Maintainer: Youpi <max.flocard@gmail.com>
pkgname=dkms-nvidia-beta
pkgver=313.18
pkgrel=3
pkgdesc="NVIDIA beta drivers for linux (For DKMS)"
arch=('i686' 'x86_64')
url="http://www.nvidia.com/"
license=('custom:NVIDIA')
depends=('dkms' "nvidia-utils-beta=${pkgver}")
conflicts=('nvidia')
provides=("nvidia=${pkgver}")
install="${pkgname}.install"
options=('!strip')

if [ "$CARCH" = "i686" ]; then
  _arch='x86'
  _pkg="NVIDIA-Linux-${_arch}-${pkgver}"
  source=("http://download.nvidia.com/XFree86/Linux-${_arch}/${pkgver}/${_pkg}.run")
  md5sums+=('780c37c28a6e06e9571cafe348b7da64')
elif [ "$CARCH" = "x86_64" ]; then
  _arch='x86_64'
  _pkg="NVIDIA-Linux-${_arch}-${pkgver}-no-compat32"
  source=("http://download.nvidia.com/XFree86/Linux-${_arch}/${pkgver}/${_pkg}.run")
  md5sums+=('fa17a260793a38b4b8ae367db2e03b39')
fi

source[1]=dkms.conf
md5sums[1]=fe4e3bd2ab523e2ea78eb82d4ebe5c25

build() {
  pushd ${srcdir}
  msg2 "Extract Driver"
  sh "${_pkg}".run --extract-only
  popd
}

package() {
  pushd ${srcdir}

  # Copy header in DKMS makepath
  install -d "${pkgdir}/usr/src/nvidia-${pkgver}"
  cp -a ${_pkg}/kernel/* "${pkgdir}/usr/src/nvidia-${pkgver}"
  cp dkms.conf ${pkgdir}/usr/src/nvidia-${pkgver}

  # Add Noveau to Blacklist
  install -d -m755 $pkgdir/etc/modprobe.d
  echo "blacklist nouveau" >> $pkgdir/etc/modprobe.d/nouveau_blacklist.conf

  popd
}
