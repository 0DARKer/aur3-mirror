# Maintainer: Alex Forencich <alex@alexforencich.com>
pkgname=python-ivi
pkgver=0.1
pkgrel=1
pkgdesc="Python Interchangeable Virtual Instrument Library"
arch=('any')
url="https://github.com/alexforencich/python-ivi"
license=('MIT')
depends=('python' 'python-numpy')
optdepends=(
  'python-vxi11: VXI11 instrument support'
  'python-usbtmc: USBTMC instrument support'
)

source=("python-ivi-$pkgver.tar.gz::https://github.com/alexforencich/python-ivi/archive/v$pkgver.tar.gz")
md5sums=('f5a1ea866c0fa046fa12c2b2603486f9')

build() {
  cd "$srcdir/python-ivi-$pkgver"
}

package() {
  cd "$srcdir/python-ivi-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

