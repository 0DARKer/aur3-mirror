pkgname='perl-string-truncate'
pkgver='1.100570'
pkgrel='1'
pkgdesc="a module for when strings are too long to be displayed in..."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-sub-exporter' 'perl-sub-install>=0.03')

url='http://search.cpan.org/dist/String-Truncate'

source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/String-Truncate-1.100570.tar.gz')
md5sums=('495d6c87d9b2de6c64bdbc65a2dc82e3')

build() {
  DIST_DIR="${srcdir}/String-Truncate-1.100570"
  export PERL_MM_USE_DEFAULT=1
  {

	cd "$DIST_DIR" &&

    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

