pkgname=slime
pkgver=2.0
pkgrel=9
arch=('any')
license=('custom')
pkgdesc="The Superior Lisp Interaction Mode for Emacs"
url="http://common-lisp.net/project/slime/"
depends=('emacs')
makedepends=('texlive-core' 'texinfo')
install='slime.install'
source=("http://common-lisp.net/project/slime/slime-$pkgver.tgz" licenses)
md5sums=('24ccc060145173301b78ffa44f72c49a'
         '1cdfb69afc10f0d0b690884591678081')

build() {
  install -d $pkgdir/usr/share/emacs/site-lisp ||return 1
  cp -r $srcdir/slime-$pkgver \
    $pkgdir/usr/share/emacs/site-lisp/slime ||return 1
  install -d $pkgdir/usr/share/common-lisp/systems
  ln -s /usr/share/emacs/site-lisp/slime/swank.asd \
    $pkgdir/usr/share/common-lisp/systems/ ||return 1
  install -D -m644 $srcdir/licenses \
    $pkgdir/usr/share/licenses/$pkgname/licenses ||return 1
  cd $srcdir/$pkgname-$pkgver/doc
  make ||return 1
  make infodir=$pkgdir/usr/share/info install || return 1
  rm $pkgdir/usr/share/info/dir ||return 1
  install -Dm644 slime.pdf $pkgdir/usr/share/doc/slime/slime.pdf ||return 1
}

