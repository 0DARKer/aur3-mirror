pkgname=pithos
pkgver=0.3.18
pkgrel=1
pkgdesc='Pandora Internet Radio player for GNOME'
arch=('any')
url="http://pithos.github.io/"
license=('GPL3')
depends=('python2' 'pygtk' 'python2-notify' 'python2-xdg' 'python2-dbus' 'gstreamer0.10-python' 'gstreamer0.10-good-plugins' 'gstreamer0.10-bad-plugins' 'gstreamer0.10-base-plugins' 'hicolor-icon-theme' 'python2-pylast')
makedepends=('python2-setuptools' 'python2-distutils-extra')
optdepends=('python2-keybinder2: fallback for media keys plugin'
            'gstreamer0.10-ugly-plugins: MP3 playback support')
source=("https://github.com/pithos/pithos/archive/${pkgver}.tar.gz")
install="$pkgname.install"
md5sums=('44d0d81a1318a8bd5754c39b1f765e8b')

package() {
  cd "$srcdir/${pkgname}-$pkgver"
  python2 setup.py install --optimize=1 --prefix=/usr --root="${pkgdir}/"
}

