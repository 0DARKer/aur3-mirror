post_install() {
    echo "If you will be running hostsblock on your main /etc/hosts file, copy"
    echo "your original to /etc/hostsblock/hosts.head to preserve your entries."
    echo -e "\n A documented configuration file is available under"
    echo "/etc/hostsblock/rc.conf"
}

post_update() {
    echo "WARNING: The format of /etc/hostsblock/rc.conf has changed slightly."
    post_install
}
