# Maintainer: Jake VanderKolk <jakevanderkolk@gmail.com>
pkgname=hostsblock
pkgver=0.2
pkgrel=1
pkgdesc="A script and cronjob that downloads, sorts, and installs multiple ad- and malware-blocking hosts files."
arch=(any)
url="https://bbs.archlinux.org/viewtopic.php?id=139784"
license=('GPL')
depends=(unzip bash curl grep sed coreutils)
optdepends=('dnsmasq: helps speed up DNS resolutions'
	    'pixelserv: removes boilerplate page on blocked urls')
install=$pkgname.install
source=('hostsblock.sh' 'hostsblock.conf')
md5sums=('fb697447d128a1179c8cf7c910703f3f' '006b0b51e7419b65351fd522b2a6f420')

package() {
  install -Dm755 "$srcdir"/hostsblock.sh "$pkgdir"/usr/bin/hostsblock
  install -Dm644 "$srcdir"/hostsblock.conf "$pkgdir"/usr/share/hostsblock/hostsblock.conf
}
