# Maintainer: neersighted <n@neersighted.com>
# Contributor: tuxce <tuxce.net@gmail.com>

pkgname=aurvote-git
pkgver=latest
pkgrel=1
pkgdesc='Vote for your favorite AUR packages (development version)'
url='http://git.archlinux.fr/aurvote.git'
license=('GPL')
source=('git://git.archlinux.fr/aurvote.git')
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
arch=('any')
depends=('curl')
makedepends=('git')
conflicts=('aurvote')
provides=('aurvote')

pkgver() {
  cd ${srcdir}/${pkgname}

  git describe --always | sed 's/^v//;s/-/./g'
}

package() {
  cd ${srcdir}/aurvote

  # Install the program.
  install -Dm755 aurvote ${pkgdir}/usr/bin/aurvote
}

# vim:set ts=2 sw=2 et:
