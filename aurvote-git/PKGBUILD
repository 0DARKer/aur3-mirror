# Maintainer: Neer Sighted (neersighted) <neersighted@myopera.com>
# Contributor: tuxce <tuxce.net@gmail.com>

pkgname=aurvote-git
pkgver=0529bbd
pkgrel=5
pkgdesc='Vote for your favorite AUR packages from the shell (development version)'
url='http://git.archlinux.fr/aurvote.git'
license=('GPL')
_gitname=aurvote
source=("${_gitname}::git://git.archlinux.fr/aurvote.git")
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
arch=('any')
depends=('curl')
makedepends=('git')
conflicts=('aurvote')
provides=('aurvote')

pkgver() {
  cd "${srcdir}/${_gitname}"

  git describe --always | sed 's/^v//;s/-/./g'
}

package() {
  cd "${srcdir}/${_gitname}"

  # Install the program.
  install -Dm755 aurvote \
                 "${pkgdir}/usr/bin/aurvote"
}

# vim:set ts=2 sw=2 et:
