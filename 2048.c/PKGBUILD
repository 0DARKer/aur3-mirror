pkgname=2048.c
pkgver=69
pkgrel=1
pkgdesc="A terminal 2048 written in c"
arch=('any')
url="https://github.com/mevdschee/2048.c"
license=('MIT')
source=("https://raw.githubusercontent.com/mevdschee/2048.c/bdbfce8b32b55d2c449c5c25856aea3f73a03981/2048.c"
		"https://raw.githubusercontent.com/mevdschee/2048.c/bdbfce8b32b55d2c449c5c25856aea3f73a03981/Makefile")
md5sums=('456c67fba102de444b1fa455500f1009'
         'd53ad3be6bb1c30be267bfa9ae7185f0')

build() {
	cd "${srcdir}"
	make
}

check() {
	cd "${srcdir}"
	./2048 test
}

package() {
	install "${srcdir}/2048" -D "${pkgdir}/usr/bin/2048"
}

