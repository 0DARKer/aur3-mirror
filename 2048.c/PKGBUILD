
# Maintainer : mdevlamynck <matthias.devlamynck@mailoo.org>

pkgname=2048.c
pkgver=64
pkgrel=2
pkgdesc="A terminal 2048 written in c"
arch=('any')
url="https://github.com/mevdschee/2048.c"
license=('MIT')
source=("https://raw.githubusercontent.com/mevdschee/2048.c/master/2048.c") 
md5sums=('5fc7eac859fba2d05bce4508ac569436')

build() {
	cd "${srcdir}"
	gcc -o 2048 2048.c $CFLAGS
}

check() {
	cd "${srcdir}"
	./2048 test
}

package() {
	install "${srcdir}/2048" -D "${pkgdir}/usr/bin/2048"
}

