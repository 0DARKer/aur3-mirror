pkgname=2048.c
pkgver=67
pkgrel=1
pkgdesc="A terminal 2048 written in c"
arch=('any')
url="https://github.com/mevdschee/2048.c"
license=('MIT')
source=("https://raw.githubusercontent.com/mevdschee/2048.c/9c397cb67b05b06335a77169ad60a609550180b5/2048.c"
		"https://raw.githubusercontent.com/mevdschee/2048.c/9c397cb67b05b06335a77169ad60a609550180b5/Makefile")
md5sums=('5fc7eac859fba2d05bce4508ac569436'
		 '884a2cd3b7d728ed18a77ebb7230fea7')

build() {
	cd "${srcdir}"
	make
}

check() {
	cd "${srcdir}"
	./2048 test
}

package() {
	install "${srcdir}/2048" -D "${pkgdir}/usr/bin/2048"
}

