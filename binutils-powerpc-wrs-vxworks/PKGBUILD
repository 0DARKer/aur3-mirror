pkgname=binutils-powerpc-wrs-vxworks
pkgver=2.23.1
pkgrel=2
pkgdesc="Binutils modded for VxWorks 6.3"
arch=('i686' 'x86_64')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL')
provides=('binutils-powerpc-wrs-vxworks')
conflicts=('vxworks-gcc-toolchain-bin')
depends=()
options=('!strip' '!libtool' '!zipman')
if test "$CARCH" == i686; then
	source=(https://www.dropbox.com/s/s6ir62qw7g7z90z/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('622fea13667110241751c1bc4d482c56e72e7ed0937fe176d4807b865931b9ec23cc636e441f5796537296796df7278bf1136091fd5dc8e4fbd0b66bf5c5411b')
else
	source=(https://www.dropbox.com/s/dp24c4y8zv7g0wr/$pkgname-$pkgver-$CARCH.tar.xz)
	sha512sums=('fdce7d41c2f2dddfbf4d58fbab535d5f1bc4519c6a1c29ba6b7efbe6425d000bf1b24befaeafa3c748c7fecb81ebfd2b5c7bca6af6d529c0d1eef0fffa5fb3ef')
fi

package(){
  cd "$srcdir/$pkgname-$pkgver"
  cp -dpr --no-preserve=ownership ./usr $pkgdir/
}
