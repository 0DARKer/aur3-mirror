pkgname=pybugz
pkgver=0.9.0_rc1
pkgrel=1
pkgdesc="Python interface to Bugzilla"
arch=('i686' 'x86_64')
url="http://code.google.com/p/pybugz/"
license=('GNU GPL v2')
depends=("python2>=2.4" "python2-elementtree")
source=(http://pybugz.googlecode.com/files/pybugz-0.9.0_rc1.tar.gz)
sha1sums=('5af64a8770719ef2a5473ec3ac94b68a9fe15177')

build() {
    cd $srcdir/pybugz-0.9.0_rc1
    python2 setup.py install --root=$pkgdir
}

