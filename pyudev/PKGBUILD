# Maintainer: Sebastian Wiesner <lunaryorn googlemail com>
# Contributor: Dwight Schauer <dschauer@ti.com>
pkgname=pyudev
pkgver=0.8
pkgrel=1
pkgdesc="Python binding for libudev"
arch=('any')
url="http://packages.python.org/pyudev/"
license=('LGPL')
depends=('python2' 'udev')
makedepends=('python2-distribute')
optdepends=('pyqt: pyqt4 integration'
            'pyside: pyside integration'
            'pygobject: glib integration')
source=("http://pypi.python.org/packages/source/p/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('6066ac11504faea53e9d50e87ea9b89d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root "${pkgdir}" -O1 || return 1
  install -D -m644 README.rst "${pkgdir}/usr/share/doc/pyudev/README.rst"
  install -m644 CHANGES.rst "${pkgdir}/usr/share/doc/pyudev/CHANGES.rst"
}
