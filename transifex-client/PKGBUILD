# Maintainer: Patrick McCarty <pnorcks at gmail dot com>

pkgname=transifex-client
pkgver=0.5
pkgrel=2
pkgdesc="The Transifex command-line tool"
arch=(any)
url="http://pypi.python.org/pypi/transifex-client"
license=('GPL2')
depends=('python2' 'python2-distribute')
source=(http://pypi.python.org/packages/source/t/$pkgname/$pkgname-$pkgver.tar.gz
        auto-remote-fix.patch)
sha256sums=('72d7a879214bce1341a6d4e650e40f9a3f51483ee4a7c45f1caf81d24896824e'
            'daa7957c8cf9db4b78767d1446dd001daa08e7cd66449ae7e4325c7388d16b51')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -p1 -i "$srcdir/auto-remote-fix.patch"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
