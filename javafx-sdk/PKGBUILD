# Maintainer: Aliasbody <aliasbody@gmail.com>
pkgname=javafx-sdk
pkgver=2.2b07
pkgrel=1
pkgdesc="A lightweight, hardware-accelerated Java UI platform for enterprise business applications"
url="http://javafx.com/"
arch=("x86_64" "i686")
license=("custom: Oracle Technology Network")
depends=("java-runtime" "ffmpeg" "gtk2")

if [ $CARCH == "i686" ]; then
	source=("https://dl.dropbox.com/s/diavxy3ndqobck9/javafx_sdk-2_2_0-beta-b07-linux-i586.zip")
	md5sums=("858f82402ac4bfd16ee3bbfc3653ba23")
fi

if [ $CARCH == "x86_64" ]; then
	source=("https://dl.dropbox.com/s/mbz01yn1hnpecfm/javafx_sdk-2_2_0-beta-b07-linux-x64.zip")
	md5sums=("8f702056ae1d58de8d92db1775ccc42a")
fi

package() {
	_installDir=$pkgdir/usr/lib/jvm/$pkgname

	mkdir -p $_installDir
	mv $srcdir/javafx-sdk2.2.0-beta/* $_installDir
	
	mkdir -p $pkgdir/usr/share/licenses/$pkgname
	mv $_installDir/COPYRIGHT.html $pkgdir/usr/share/licenses/$pkgname/
	mv $_installDir/THIRDPARTYLICENSEREADME.txt $pkgdir/usr/share/licenses/$pkgname/

	mkdir -p $pkgdir/usr/bin/
	chmod u+x $_installDir/bin/javafxpackager
	ln -s $_installDir/bin/javafxpackager $pkgdir/usr/bin/javafxpackager
}