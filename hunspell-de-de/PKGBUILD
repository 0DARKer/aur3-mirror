# Maintainer: Alexander Fehr <pizzapunk gmail com>

pkgname=hunspell-de-de
pkgver=20100727
pkgrel=1
pkgdesc="German (Germany) dictionary for Hunspell"
arch=('any')
url="http://www.j3e.de/ispell/igerman98/"
license=('GPL' 'custom:OASIS')
depends=('hunspell')
makedepends=('ispell')
source=(http://www.j3e.de/ispell/igerman98/dict/igerman98-$pkgver.tar.bz2)
md5sums=('53a66eccaf15fa92d4e5085e7938ee69')

build() {
  cd $srcdir/igerman98-$pkgver

  make hunspell/de_DE.aff hunspell/de_DE.dic
}

package() {
  cd $srcdir/igerman98-$pkgver

  install -D -m644 hunspell/de_DE.dic $pkgdir/usr/share/myspell/de_DE.dic
  install -D -m644 hunspell/de_DE.aff $pkgdir/usr/share/myspell/de_DE.aff

  install -D -m644 hunspell/Copyright $pkgdir/usr/share/licenses/hunspell-de-de/Copyright
  install -D -m644 hunspell/COPYING_OASIS $pkgdir/usr/share/licenses/hunspell-de-de/COPYING_OASIS
}
