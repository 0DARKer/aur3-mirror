pkgname=pg-bsd-indent
pkgver=1.2
_majorver=${pkgver%.*}
pkgrel=1
pkgdesc="BSD indent (patched for postgresql)"
arch=('i686' 'x86_64')
url="http://www.postgresql.org/"
license=('custom:PostgreSQL')
conflicts=('indent')
source=(ftp://ftp.postgresql.org/pub/dev/pg_bsd_indent-1.2.tar.gz
       )
md5sums=('cf7e1780199d26644d5fc7654f34c0d3'
        )
sha256sums=('1a6f96262643f714e4c800c0703dbecf1e8768345289b74200b4904c0d24a1b1'
           )

build() {
  cd "${srcdir}/pg_bsd_indent"
  make
}

package() {
  mkdir -p "${pkgdir}/usr/local/bin"
  cd "${srcdir}/pg_bsd_indent"
  install -m755 pg_bsd_indent "${pkgdir}/usr/local/bin/pg_bsd_indent"
}
