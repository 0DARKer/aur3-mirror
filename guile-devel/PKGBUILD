# Maintainer: Patrick McCarty <pnorcks at gmail dot com>
# Contributor: Emmanuel 'guinness' Boudreault

pkgname=guile-devel
pkgver=1.9.15
pkgrel=1
pkgdesc="Guile is a portable, embeddable Scheme implementation written in C"
url="http://www.gnu.org/software/guile/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gmp>=4.3.1' 'libtool' 'ncurses>=5.7' 'texinfo'
         'libunistring' 'gc' 'libffi')
conflicts=('guile')
provides=("guile=$pkgver")
install=guile.install
options=('!libtool')
source=(ftp://alpha.gnu.org/gnu/guile/guile-${pkgver}.tar.gz)
sha256sums=('17c07a771b65959f7ed3b12fc4d9eb186b04a6cf263482326b8c099d9468da2c')

build() {
  cd "${srcdir}/guile-${pkgver}"

  ./configure --prefix=/usr
  make LDFLAGS+="-lpthread"
}

package() {
  cd "${srcdir}/guile-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
