pkgname=mp32ogg-bash
pkgver=0.2
pkgrel=3
pkgdesc="A bash script to convert mp3 files into ogg vorbis files"
url='http://www.changaco.net/code/mp32ogg-bash/'
arch=('any')
license=('GPL')
depends=('vorbis-tools' 'id3lib' 'mp3info' 'mpg123')
source=("http://www.changaco.net/code/mp32ogg-bash/mp32ogg-bash")
md5sums=('acf892a429cc1d2afc7dcc62efd3e589')

build() {
	mkdir -p $pkgdir/usr/bin
	install -m 755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
