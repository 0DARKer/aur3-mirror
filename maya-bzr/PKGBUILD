# Maintainer: crazyelf5

pkgname=maya-bzr
pkgver=108
pkgrel=1
pkgdesc="Calendar application written in Vala from the Elementary project"
arch=('i686' 'x86_64')
url="https://launchpad.net/maya"
license=('GPL3')
depends=('evolution-data-server' 'gobject-introspection' 'glib2'
         'gtk3' 'granite-bzr' 'libical' 'libgee' 'dconf' 'contractor-bzr')
makedepends=('bzr' 'vala' 'cmake' 'gcc' 'gtk-update-icon-cache' 'desktop-file-utils')
install=$pkgname.install

_bzrtrunk=lp:maya
_bzrmod=maya

build() {
  msg "Connecting to Bazaar server...."

  if [ -d $_bzrmod ]; then
    cd $_bzrmod && bzr pull $_bzrtrunk -r $pkgver
    msg "The local files are updated."
    cd "$srcdir"
  else
    bzr branch $_bzrtrunk $_bzrmod -r $pkgver
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  rm -rf $_bzrmod-build
  cp -r $_bzrmod $_bzrmod-build
  cd $_bzrmod-build
  mkdir build; cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$_bzrmod-build/build"
  make DESTDIR="$pkgdir/" install
  rm -rf "$srcdir/$_bzrmod-build"
}
