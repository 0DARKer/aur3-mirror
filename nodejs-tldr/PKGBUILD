# Author: Romain Prieto
# Maintainer: rprieto <romain@asyncdev.net>
_npmname=tldr
_npmver=0.0.6
pkgname=nodejs-tldr # All lowercase
pkgver=0.0.6
pkgrel=1
pkgdesc="Simplified and community-driven man pages"
arch=(any)
url="https://github.com/rprieto/tldr"
license=(MIT)
depends=('nodejs' )
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
noextract=($_npmname-$_npmver.tgz)
sha1sums=(c8efa8ded81d12b1800290546ec13413adef2a3b)

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install -g --prefix "$pkgdir/usr" $_npmname@$_npmver
}

