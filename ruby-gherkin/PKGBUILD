# Maintainer: Rogof <fake.bios@gmail.com>
pkgname=ruby-gherkin
pkgver=2.3.5
pkgrel=1
pkgdesc="A fast Gherkin parser in Ragel"
arch=('i686' 'x86_64')
url="https://github.com/aslakhellesoy/gherkin"
license=('GPL')
depends=(ruby)
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/gherkin-$pkgver.gem)
noextract=(gherkin-$pkgver.gem)
sha1sums=('a4b0d8ebb5e08d8a529c502b8e7081abc92d3ced')

package() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" gherkin-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
