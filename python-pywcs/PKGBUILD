# Contributor: Médéric Boquien <mboquien@free.fr>

pkgname=python-pywcs
pkgver=1.8.1
pkgrel=3
pkgdesc="A python language interface to handle FITS WCS"
arch=('i686' 'x86_64')
url="http://stsdas.stsci.edu/astrolib/pywcs/"
license=("custom")
depends=('python2' 'python-pyfits>=1.4' 'python-numpy>=1.3')
source=("http://stsdas.stsci.edu/astrolib/pywcs-$pkgver-4.4.4.tar.gz")
md5sums=('c87cfaa8759a97788e2bf9d7eaa8f81d')

build() {
  cd $srcdir/pywcs-$pkgver-4.4.4
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1

  # Remember to install licenses if the license is not a common license!
  install -D -m644 $srcdir/pywcs-$pkgver-4.4.4/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
