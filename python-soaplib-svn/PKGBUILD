# $ Id: $
# Maintainer: Jacco Koning <archlinux@jaccokoning.nl>

pkgname=python-soaplib-svn
pkgver=44
pkgrel=1
pkgdesc="Soaplib is an easy to use python library for writing and calling soap web services"
license=('LGPL')
arch=('i686' 'x86_64')
url="http://trac.optio.webfactional.com/"
depends=('python')
makedepends=('setuptools')
source=()
md5sums=()

_svntrunk="https://svn.optio.webfactional.com/soaplib/trunk"
_svnmod="soaplib"

build() {
	msg "Connecting to $_svntrunk SVN server...."
	if [ -d $_svnmod/.svn ]; then
		(cd $_svnmod && svn up)
	else
		svn co $_svntrunk $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."

	cd ${srcdir}/$_svnmod
	python setup.py install --root=${pkgdir}

	# License
	install -Dm644 ${srcdir}/$_svnmod/LICENSE \
	${pkgdir}/usr/share/licenses/python-soaplib/license
}
