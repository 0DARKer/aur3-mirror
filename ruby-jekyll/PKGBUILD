# Contributor: oliparcol <oliparcol AT gmail DOT com>
pkgname=ruby-jekyll
pkgver=1.0.0
pkgrel=1
pkgdesc="Jekyll is a simple, blog aware, static site generator."
arch=(any)
url="http://jekyllrb.com/"
license=('MIT')
depends=(ruby 
        'ruby-classifier>=1.3' 
        'ruby-colorator>=0.1'
        'ruby-commander>=4.1.3'
        'ruby-safe_yaml=0.7.0'
        'ruby-directory_watcher=1.4.1' 
        'ruby-kramdown>=0.14'
        'ruby-liquid>=2.3.0' 
        'ruby-maruku>=0.5.0'
        'ruby-redcloth>=4.2.0'
        'ruby-pygments.rb=0.4.2')
makedepends=(rubygems)
source=(http://rubygems.org/downloads/jekyll-$pkgver.gem
        LICENSE)
noextract=(jekyll-$pkgver.gem)
package () {
        cd $srcdir
        local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

        gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" jekyll-$pkgver.gem -n "$pkgdir/usr/bin"

        install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

sha256sums=('9cb105e4710662db8fd7d1b639b1c8fea093608ef6d532842bf7bde176957546'
            'ce58952f25cc38983b8b9cbb71ff91c68a8f1944402a30dccd21b5e8e1d7086d')
