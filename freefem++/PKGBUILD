# Contributor: 'lazork'

# NOTE: build will fail with suitesparse installed

pkgname=freefem++
pkgver=3.21
pkgrel=2
pkgdesc="A PDE oriented language using the finite element method"
arch=('i686' 'x86_64')
url="http://www.freefem.org/ff++/index.htm"
license=('LGPL')
depends=('arpack' 'fftw' 'freeglut')
makedepends=('gcc-fortran' 'wget')
options=(!makeflags)
source=("http://www.freefem.org/ff++/ftp/${pkgname}-${pkgver}.tar.gz"
        "disable-doc.patch")
md5sums=('170ae0914fad96aeec103a77c3e9825c'
         '5d3e48e641cb0b067855077c94ee45da')

prepare() {
	cd "$srcdir/$pkgname-$pkgver"

	sed -i "1i#include <unistd.h>" src/Graphics/getprog-unix.hpp
	patch -Np1 -i ../disable-doc.patch
}

build() {
	cd "$srcdir/$pkgname-$pkgver"

	./configure \
		--prefix=/usr \
		--enable-download \
		--disable-pdf

	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir" install
}

# vim: ft=sh syn=sh et
