# Contributor: zhuqin

pkgname=gnome-color-manager
pkgver=2.32.0
pkgrel=1
pkgdesc="Gnome Color Manager"
arch=('i686' 'x86_64')
url="http://projects.gnome.org/gnome-color-manager/"
license=('GPL')
depends=('sane' 'lcms' 'glib2' 'vte' 'gnome-desktop' 'libunique' 'xorg-server' 'libx11' 'libnotify' 'libcanberra' 'libtiff')
optdepends=('argyllcms: calibration')
makedepends=('gnome-doc-utils')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/gnome-color-manager/2.32/gnome-color-manager-$pkgver.tar.bz2)
md5sums=('dda18a8c6a07bf54276ee481dab83091')

build(){
  cd $srcdir/gnome-color-manager-$pkgver
  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=$pkgdir install || return 1
  install -m755 -d $pkgdir/usr/share/gconf/schemas
  gconf-merge-schema $pkgdir/usr/share/gconf/schemas/$pkgname.schemas --domain $pkgname $pkgdir/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
