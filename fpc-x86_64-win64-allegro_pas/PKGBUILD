pkgname=fpc-x86_64-win64-allegro_pas
pkgver=4.4.3
pkgrel=2
pkgdesc="Allegro.pas is a wrapper to use Allegro with Pascal compilers (x86_64-win64)"
arch=(any)
url="http://allegro-pas.sourceforge.net/"
license=('unknown')
depends=('fpc-x86_64-win64-rtl')
makedepends=('ppcrossx64')
source=("http://downloads.sourceforge.net/allegro-pas/allegro.pas-$pkgver-src-pas.tar.bz2")
md5sums=('d289929fb13320bdca0fdc3a0944adf8')

build() {
  cd "${srcdir}/allegro.pas/lib"
  ppcrossx64 -Twin64 al3d.pas
  ppcrossx64 -Twin64 alblend.pas
  ppcrossx64 -Twin64 alfile.pas
  ppcrossx64 -Twin64 alflic.pas
  ppcrossx64 -Twin64 algui.pas
  ppcrossx64 -Twin64 alvga.pas
}

package() {
  cd "${srcdir}/allegro.pas/lib"
  mkdir -p "$pkgdir/usr/lib/fpc/2.6.0/units/x86_64-win64/allegro"
  mv *.o "$pkgdir/usr/lib/fpc/2.6.0/units/x86_64-win64/allegro"
  mv *.ppu "$pkgdir/usr/lib/fpc/2.6.0/units/x86_64-win64/allegro"
  mv *.a "$pkgdir/usr/lib/fpc/2.6.0/units/x86_64-win64/allegro"
}