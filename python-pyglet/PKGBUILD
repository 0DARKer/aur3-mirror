# Contributor: Allen Li <darkfeline@abagofapples.com>
pkgname=python-pyglet
pkgver=1.2alpha1
pkgrel=1
pkgdesc="A cross-platform windowing and multimedia library"
arch=(any)
url="http://pyglet.org"
license=('BSD')
depends=('python')
optdepends=('avbin: for compressed audio/video')
makedepends=('python-distribute' 'mercurial')
source=("pyglet::hg+https://pyglet.googlecode.com/hg#tag=release-${pkgver}")
md5sums=("SKIP")

build() {
  cd $srcdir/pyglet
  python setup.py build
}

package() {
  cd $srcdir/pyglet
  python setup.py install --root=$pkgdir --optimize=1
  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp $srcdir/pyglet/LICENSE $pkgdir/usr/share/licenses/$pkgname
}
