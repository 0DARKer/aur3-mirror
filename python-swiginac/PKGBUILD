pkgname=python-swiginac
pkgver=1.5.1
pkgrel=1
pkgdesc="Symbolic computation package (Python interface to GiNaC)"
arch=('i686' 'x86_64')
url="http://swiginac.berlios.de"
license=('GPL')
#depends on aur/ginac-git because aur/ginac is currently really outdated
depends=('python' 'swig' 'ginac-git')
makedepends=('python' 'swig' 'ginac-git')
provides=('swiginac')
conflicts=('swiginac')
source=(http://download2.berlios.de/swiginac/swiginac-$pkgver.tgz)
md5sums=('08a9523f1a977986fb0634ed385df738')

build() {
  cd $srcdir/swiginac-$pkgver
  python setup.py build
  python setup.py install --root=$pkgdir
}
