# Maintainer: Jonas Höglund <aur＠firefly․nu>
pkgname=pangoterm-bzr
pkgver=538
pkgrel=1
pkgdesc="GTK/Pango-based terminal emualtor using the libvterm library"
arch=('i686' 'x86_64')
url="https://code.launchpad.net/pangoterm"
license=('MIT')
depends=('pangoterm-libvterm' 'pango')
makedepends=('bzr')
provides=('pangoterm')

_bzrtrunk=http://bazaar.leonerd.org.uk/code/pangoterm/
_bzrmod=pangoterm

build() {
  cd "$srcdir"
  msg "Connecting to Bazaar server...."

  if [[ -d "$_bzrmod" ]]; then
    cd "$_bzrmod" && bzr --no-plugins pull "$_bzrtrunk" -r "$pkgver"
    msg "The local files are updated."
  else
    bzr --no-plugins branch "$_bzrtrunk" "$_bzrmod" -q -r "$pkgver"
  fi

  msg "Bazaar checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_bzrmod-build"
  cp -r "$srcdir/$_bzrmod" "$srcdir/$_bzrmod-build"
  cd "$srcdir/$_bzrmod-build"

  # Build
  make PREFIX=/usr
}

package() {
  cd "$srcdir/$_bzrmod-build"
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
