# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Rafal Mielniczuk <rafalm3@gmail.com>
pkgname=avis
pkgver=1.2.2
pkgrel=1
epoch=
pkgdesc="Avis is a high-performance event router. It provides a fast publish/subscribe event routing service compatible with the commercial Elvin implementation developed by Mantara Software."
arch=('i686' 'x86_64')
url="http://avis.sourceforge.net"
license=('LGPL')
groups=()
depends=('java-environment')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://downloads.sourceforge.net/avis/$pkgname-$pkgver.tar.bz2")
noextract=()
md5sums=('4d5d4542c8b829f7935b38e4169466f4')

build() {  
cd "$srcdir/$pkgname-$pkgver"
}



package() {
  cd "$srcdir/$pkgname-$pkgver"
  ./install.sh --prefix=$pkgdir/usr
} 
