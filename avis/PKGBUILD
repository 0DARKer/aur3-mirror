pkgname=avis
pkgver=1.2.2
pkgrel=1
pkgdesc="Avis is a high-performance event router. It provides a fast publish/subscribe event routing service compatible with the commercial Elvin implementation developed by Mantara Software."
arch=('i686' 'x86_64')
url="http://avis.sourceforge.net"
license=('LGPL')
depends=('java-environment')
source=("http://downloads.sourceforge.net/avis/$pkgname-$pkgver.tar.bz2")
md5sums=('4d5d4542c8b829f7935b38e4169466f4')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  ./install.sh --prefix=$pkgdir/usr
} 
