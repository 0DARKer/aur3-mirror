pkgname=python-luban
_pkgname=luban
pkgver=0.2b1
pkgrel=2
pkgdesc="a generic (web/native) user interface builder"
arch=("any")
url="http://luban.danse.us"
license=('custom')
depends=('python-sqlalchemy=0.5.8' 'docutils')
makedepends=('setuptools')
source=("http://dev.danse.us/packages/$_pkgname-$pkgver.tar.gz")
md5sums=('d16d92fc229d0af6d307695272bcdc19')

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir/ --optimize=1 || return 1

  install -D -m644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}


