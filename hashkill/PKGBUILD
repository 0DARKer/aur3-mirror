# Maintainer: Your Name <youremail@domain.com>
pkgname=hashkill
pkgver=0.2.3b
pkgrel=1
pkgdesc="A multithreaded hash cracker"
arch=(i686 x86_64)
url="http://hashkill.sourceforge.net"
license=('GPL')
depends=(openssl
         zlib
         pkg-config
         )
makedepends=()
optdepends=()
options=()
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz
        Makefiles.patch)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  patch -p0 < ../../Makefiles.patch
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}

sha256sums=('1acead3bebffcd21a5c6a191eaeaa5626f5c947f30bad00f25b36c27d1e60516'
            '9c2245605908385a9d6dcd259f201f2855782d4605b8ac4c18e26c6a7b740175')
