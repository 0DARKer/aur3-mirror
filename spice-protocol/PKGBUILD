# Maintainer: Mikhail Kulemin <m1h@yandex.ru> 
# Maintainer: Pavel Zhukov <pavel@zhukoff.net> 
pkgname=spice-protocol
pkgver=0.6.3
pkgrel=1
pkgdesc="Headers for SPICE protocol."
arch=(x86_64 i686)
url="http://spice-space.org"
license=('GPL')
source=(http://spice-space.org/download/releases/$pkgname-$pkgver.tar.gz)
md5sums=('ae1b42e836fda1da19ea0afadcc68782')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

