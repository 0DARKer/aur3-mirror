pkgbase=CodeAnalyst
pkgname=codeanalyst
pkgver=2_11_4_0103
pkgrel=1
pkgdesc="AMD Code Analyst"
url="http://www.amd.com/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gcc')
makedepends=('gcc' 'qt3')
conflicts=()
replaces=()
backup=()
install=codeanalyst.install
source=("http://developer.amd.com/Downloads/$pkgbase-$pkgver-Public.tar.gz"
	'skip-Setup.patch'
	'codeanalyst.install')

md5sums=('7e102d2e9a26af07dd25fb4299da21b8'
         '0720e066ef8a4a26dd0055bfc00b851b'
         '4044b1b5e01d87e01173542ec20d71c0')

build() {
  cd $startdir/src/$pkgbase-$pkgver-Public
  patch -Np1 -i "${srcdir}/skip-Setup.patch" || return 1
  ./autogen.sh
  ./configure 
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

#  mkdir "${pkgdir}/etc/ld.so.conf.d" 
#  install -D -m644 "${srcdir}/codeanalyst-x86_64.conf" "${pkgdir}/etc/ld.so.conf.d/codeanalyst-x86_64.conf"

#  ARCH=`uname -m`
#  echo "Adding /lib to /etc/ld.so.conf.d/codeanalyst-$ARCH.conf"
#  echo "/lib" > "${pkgdir}/etc/ld.so.conf.d/codeanalyst-$ARCH.conf"

#  echo "Run ldconfig as root"
#  echo "add group amdca"

}
