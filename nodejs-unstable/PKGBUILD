pkgname=nodejs-unstable
pkgver=0.5.6
pkgrel=1
pkgdesc='Evented I/O for V8 javascript, unstable version'
arch=('i686' 'x86_64' 'arm')
url='http://nodejs.org/'
license=('MIT')
depends=('python2' 'v8-current' 'c-ares')
conflicts=('nodejs')
provides=('nodejs')
checkdepends=('curl') # curl used for check()
optdepends=('openssl: TLS support')
source=("http://nodejs.org/dist/v${pkgver}/node-v${pkgver}.tar.gz")
sha256sums=('00217f5c30a556c835f509480b4981b72353d8537ec4ebeba7873655e620e0fb')

build() {
  cd node-v${pkgver}

  # python2 fix
  for file in $(find . -name '*.py' -print) wscript tools/waf-light tools/node-waf
  do
    sed -i 's_^#!.*/usr/bin/python_#!/usr/bin/python2_' ${file}
    sed -i 's_^#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' ${file}
  done
  sed -i "s|cmd_R = 'python |cmd_R = 'python2 |" wscript
  sed -i "s|python |python2 |" Makefile

  ./configure --shared-v8 --shared-cares --prefix=/usr

  make
}

#check() {
#  cd node-v${pkgver}
#  make test
#}

package() {
  cd node-v${pkgver}
  make DESTDIR=${pkgdir} install
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/nodejs/LICENSE
}
