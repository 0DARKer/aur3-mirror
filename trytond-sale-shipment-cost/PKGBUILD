pkgname=trytond-sale-shipment-cost
_pkgname=trytond_sale_shipment_cost
pkgver=2.2.1
_pkgdir=2.2
pkgrel=1
pkgdesc="The sale_shipment_cost module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.2' 'trytond-carrier>=2.2' 'trytond-sale>=2.2' 'trytond-currency>=2.2' 'trytond-account_invoice>=2.2' 'trytond-stock>=2.2')
