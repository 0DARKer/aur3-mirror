arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.4' 'trytond-carrier>=2.4' 'trytond-sale>=2.4' 'trytond-currency>=2.4' 'trytond-account-invoice>=2.4' 'trytond-stock>=2.4')
