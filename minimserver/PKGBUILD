# Maintainer: AudioLinux  <audiolinux AT fastmail DOT fm>

pkgname=minimserver
pkgver=0.8.3b
pkgrel=7
pkgdesc="UPnP Audio Server"
arch=('x86_64')
url="http://www.minimserver.com"
license=('custom:minimserver')
depends=('jre8-openjdk')
install=${pkgname}.install
source=("http://minimserver.com/download1/MinimServer-${pkgver}-linux-x64.tar.gz" "minimserver@.service")
sha256sums=('af18b927fc24987961a4969851b5f04d7f8a048f064629e763be378730c2f15c' '0c5674a0b419cffeb8f48dcebfc8c374a2f1edfaf77aba3c895bc6133a4073b9')
backup=('opt/minimserver/data/minimserver.config')

package() {
  cd ${srcdir}

  mkdir -p ${pkgdir}/opt/
  cp -rf minimserver ${pkgdir}/opt/
  chmod 777 ${pkgdir}/opt/minimserver/data/
  install -Dm644 "minimserver@.service" \
  "$pkgdir/usr/lib/systemd/system/minimserver@.service"
}
