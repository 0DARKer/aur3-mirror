pkgname=libstrfunc
pkgver=2.0.0
pkgrel=1
pkgdesc="A C library providing a collection of string-based functions"
arch=('i686' 'x86_64')
url="http://www.wolf-software.com/Libraries/strfunc"
license=('GPL3')
depends=('liblogfile>=1.2')
options=('!libtool' '!emptydirs')
source=($url/$pkgname-latest.tbz2)
md5sums=('6c18ead6500311a8db107791648cf3d4')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
