pkgname=libstrfunc
pkgver=1.2.2
pkgrel=1
pkgdesc="A C library providing a collection of string-based functions"
arch=('i686' 'x86_64')
url="http://www.wolf-software.net/Libraries/strfunc/"
license=('GPL3')
depends=('liblogfile>=1.2')
options=('!libtool' '!emptydirs')
source=($url/$pkgname-latest.tbz2)
md5sums=('70fa59203781635f0f22367532171616')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
