# Maintainer: Jesus Alvarez
pkgname=python-jedi
pkgver=0.5b5
pkgrel=2
pkgdesc="An autocompletion tool for Python that can be used for text editors."
arch=('x86_64' 'i686')
url="https://github.com/davidhalter/jedi"
license=('LGPL')
depends=('python')
makedepends=('python-distribute')
source=("http://pypi.python.org/packages/source/j/jedi/jedi-${pkgver}.tar.gz")
md5sums=('eaf183537b1fd2eb122b85c526dea729')

package() {
  cd "$srcdir/jedi-$pkgver"
  # sed -i -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" setup.py
  python setup.py install --root="$pkgdir/" --optimize=1
}

