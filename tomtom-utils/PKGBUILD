# Maintainer: Julien Schueller <julien.schueller@gmail.com>

pkgname=tomtom-utils
pkgver=1
pkgrel=1
pkgdesc="Tools for use with TomTom devices"
arch=('i686' 'x86_64')
url="https://github.com/Rupan/tomtom"
license=('GPL')
depends=('glibc')
makedepends=('gcc' 'make' 'git')
source=("git://github.com/Rupan/tomtom")
md5sums=('SKIP')

build() {
  cd $srcdir/tomtom
  ./build.sh
}

package() {
  cd $srcdir/tomtom
  install -d $pkgdir/usr/bin
  install -m 755 mkttimage ttimgextract $pkgdir/usr/bin
}
