# Contributor: Christian Sturm <reezer@reezer.org>

pkgname='perl-plack'
pkgver='1.0009'
pkgrel='1'
pkgdesc="Perl Superglue for Web frameworks and Web Servers (PSGI toolkit)"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.8.1' 'perl-stream-buffered' 'perl-devel-stacktrace>=1.23' 'perl-devel-stacktrace-ashtml>=0.11' 'perl-file-sharedir>=1.00' 'perl-filesys-notify-simple' 'perl-hash-multivalue>=0.05' 'perl-http-body>=1.06' 'perl-http-message>=5.814' 'perl-libwww' 'perl-try-tiny' 'perl-uri>=1.59')
makedepends=('perl-extutils-makemaker>=6.59' 'perl-test-requires' 'perl-test-tcp>=0.11')
url='http://plackperl.org/'
source=("http://cpan.metacpan.org/authors/id/M/MI/MIYAGAWA/Plack-${pkgver}.tar.gz")
md5sums=('825006a7087110c4f086d23d8861cfc0')
sha512sums=('d2dc43510654a1169231850f00f40afb57484215000f9e25c65734d58a377c7807ab02f3012333aa2c7eef068811464d771b284c6e35425b3047e8aa41b084b9')
_distdir="${srcdir}/Plack-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
