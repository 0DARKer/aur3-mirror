_name=minetest
name=${_name}
pkgname=${_name}
pkgver=0.2.20110731_1
pkgrel=0
pkgdesc="An Infiniminer/Minecraft inspired game, stable version."
arch=('i686' 'x86_64')
url="http://celeron.55.lt/~celeron55/minetest/"
license=('GPL')
makedepends=('mercurial' 'cmake' 'irrlicht' 'libx11' 'mesa' 'libjpeg' 'bzip2' 'libpng' 'zlib')
depends=('libx11' 'libjpeg' 'bzip2' 'libpng' 'zlib')
conflicts=('minetest-hg')
source=("https://bitbucket.org/celeron55/minetest/get/$pkgver.tar.gz")
md5sums=('d3daf31ae148604708720c5e6d93a1d9')


build() {
	cd `find $srcdir -type d -iname 'celeron55-minetest-*'` #This is... ugly
	cmake . -DCMAKE_INSTALL_PREFIX=/usr
	make DESTDIR=${pkgdir} install
}
