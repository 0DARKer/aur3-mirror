_name=minetest
name=${_name}
pkgname=${_name}
pkgver=0.2.20110922_1
pkgrel=0
pkgdesc="An Infiniminer/Minecraft inspired game, stable version."
arch=('i686' 'x86_64')
url="http://celeron.55.lt/~celeron55/minetest/"
license=('GPL')
makedepends=('mercurial' 'cmake' 'irrlicht' 'mesa' 'libjpeg' 'bzip2' 'libpng' 'zlib')
depends=('libjpeg' 'bzip2' 'sqlite3' 'libgl' 'libxxf86vm')
conflicts=('minetest-hg')
source=("https://github.com/celeron55/minetest/tarball/$pkgver")
md5sums=('56e8b96982fd63241e4aca5f21e5c537')

build() {
	cd `find $srcdir -type d -iname 'celeron55-minetest-*'` #This is... ugly
	cmake . -DCMAKE_INSTALL_PREFIX=/usr
	make DESTDIR=${pkgdir} install
}
