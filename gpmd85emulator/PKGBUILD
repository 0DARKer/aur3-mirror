# Maintainer: Jose Riha < jose 1711 gmail com >

pkgname=gpmd85emulator
pkgver=0.9.1202
pkgrel=1
pkgdesc="Multiplatform GNU/GPL Tesla PMD 85 Emulator"
arch=('i686')
url="http://sourceforge.net/projects/gpmd85emulator/"
license=('GPL')
depends=('gcc-libs' 'sdl')
source=("http://downloads.sourceforge.net/project/gpmd85emulator/GPMD85emulator.v0.9.1206.tar.gz")
md5sums=('83f3b40fee869123f30496cd8a2c16ad')

build ()
{
cd $srcdir/GPMD85emu
./configure --prefix=/usr
make
}

package() {
cd $srcdir/GPMD85emu
make DESTDIR=$pkgdir install
}
