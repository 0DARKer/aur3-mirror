# Maintainer: Frank Poehler <fp29129 at googlemail dot com>

pkgname=regain-desktop
pkgver=1.7.3
pkgrel=1
pkgdesc="A desktop search engine similar to Google Desktop"
arch=('i686' 'x86_64')
url="http://regain.sourceforge.net/?lang=en"
license=('LGPL2.1')
groups=()
depends=('java-runtime' 'jdic')
makedepends=()
optdepends=('zenity: for using search-regain.sh')
provides=('regain-desktop')
conflicts=()
replaces=()
backup=()
options=()
install=regain-desktop.install
changelog=
source=(http://garr.dl.sourceforge.net/project/regain/regain/$pkgver/regain_v$pkgver-STABLE_desktop_linux.zip
        start-regain.sh
        search-regain.sh)
noextract=()
md5sums=('f87d9361090492bc8e4e670c92ecc3d2'
         '310dba812091a715763a8ab060b6630f'
         '530d4eb4ef92e25f46a4f064ce52729b')
         
_install_prefix=/opt/regain-desktop

build() {
  cd "$srcdir"
  rm regain/{regain.sh,libjdic.so}
  mkdir -p "$pkgdir/$_install_prefix" || exit 1
  cp {start-regain,search-regain}.sh "$pkgdir/$_install_prefix"
  cp -R regain/* "$pkgdir/$_install_prefix"
}

