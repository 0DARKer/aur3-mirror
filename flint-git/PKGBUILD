# Contributor: Jonas Heinrich <onny@project-insanity.org>

# gtest dep?

pkgname=flint-git
pkgver=9cefb19
pkgrel=1
pkgdesc="Facebook's C++ linter"
arch=('i686' 'x86_64')
url="https://github.com/facebook/flint.git"
license=('Apache')
#depends=('google-glog' 'google-gflags' 'double-conversion')
makedepends=('git' 'gdc' 'folly-git')
# 'boost' 'automake' 'libtool')
source=('git://github.com/facebook/flint.git')
md5sums=('SKIP')

pkgver() {
  cd "$SRCDEST/flint"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/flint"
  autoreconf --install
  ./configure
  make
}

package() {
  cd "$srcdir/flint"
  make DESTDIR="$pkgdir/" install
}

