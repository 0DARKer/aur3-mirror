# Contributor: Joker-jar <joker-jar@yandex.ru>

pkgname=kdeartwork-androbit
pkgver=2011march06
pkgrel=1
pkgdesc="A modern theme for KDE4 plasma desktop"
arch=('any')
url="http://kde-look.org/content/show.php/Androbit+(KDE+4.6+compatibility)?content=123524"
license=('GPL')
depends=('kdebase-workspace')
source=("http://kde-look.org/CONTENT/content-files/123524-androbit_plasma_theme_${pkgver}.tar.gz")
md5sums=('a454b4cab8903ee1160864113cd272f4')

build() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/usr/share/apps/desktoptheme/androbit
  rm 123524-androbit_plasma_theme_${pkgver}.tar.gz
  cp -r * ${pkgdir}/usr/share/apps/desktoptheme/androbit/
}
