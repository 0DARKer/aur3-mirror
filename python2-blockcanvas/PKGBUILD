pkgname=python2-blockcanvas
pkgver=3.2.1
_githubtag=ff07279
pkgrel=2
pkgdesc="Numerical Modeling"
arch=('i686' 'x86_64')
url="https://github.com/enthought/blockcanvas"
license=('BSD')
depends=('python2' 'python2-numpy>=1.1' 'docutils' 'python-configobj'
         'python-imaging' 'python2-enthoughtbase' 'python2-apptools'
         'python2-chaco' 'python2-etsdevtools' 'python2-enable'
         'python2-scimath' 'python2-traits' 'python2-traitsgui')
makedepends=('python2-distribute' 'gcc>=3.4')
conflicts=('python2-blockcanvas-git' 'python-ets-blockcanvas-svn')
options=(!emptydirs)

source=("https://github.com/enthought/blockcanvas/tarball/${pkgver}")
md5sums=('fd3fd84289b06e42766d922ce980b035')

build() {
  cd "$srcdir/enthought-blockcanvas-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

