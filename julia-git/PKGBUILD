# Maintainer: Michael Jakl <jakl.michael@gmail.com>
pkgname=julia-git
pkgver=20120525
pkgrel=1
epoch=
pkgdesc="Julia is a high-level, high-performance, dynamic programming language."
arch=('i686' 'x86_64')
url="http://julialang.org"
license=('GPL')
depends=('llvm' 'readline' 'pcre' 'gcc-fortran' 'gmp' 'libunwind') # 'arpack' 'lapack' 'blas'
makedepends=('git' 'wget' 'perl' 'gcc')
optdepends=('lighttpd')
provides=('julia')
conflicts=('julia')
install=julia.install

_gitroot=git://github.com/JuliaLang/julia.git
_gitname=julia

build() {
  cd "$srcdir"

  echo "Updating from upstream"
  if [[ -d $_gitname ]]; then
    cd $_gitname && git pull origin && cd ..
  else
    git clone $_gitroot
  fi

  rm -rf $_gitname-build
  git clone $_gitname $_gitname-build

  echo "Compiling"
  cd "$srcdir/$_gitname-build"
  make PREFIX=/usr \
    USE_SYSTEM_LLVM=1 \
    USE_SYSTEM_READLINE=1 \
    USE_SYSTEM_PCRE=1 \
    USE_SYSTEM_GMP=1 \
    USE_SYSTEM_LIBUNWIND=1 \
    USE_SYSTEM_LIGHTTPD=1 \
    USE_SYSTEM_FFTW=0 \
    USE_SYSTEM_ARPACK=0 \
    USE_SYSTEM_BLAS=0 \
    USE_SYSTEM_LAPACK=0
}

package() {
  cd "$srcdir/$_gitname-build"
  make PREFIX=/usr \
    USE_SYSTEM_LLVM=1 \
    USE_SYSTEM_READLINE=1 \
    USE_SYSTEM_PCRE=1 \
    USE_SYSTEM_GMP=1 \
    USE_SYSTEM_LIBUNWIND=1 \
    USE_SYSTEM_LIGHTTPD=1 \
    USE_SYSTEM_FFTW=0 \
    USE_SYSTEM_ARPACK=0 \
    USE_SYSTEM_BLAS=0 \
    USE_SYSTEM_LAPACK=0 \
    DESTDIR="$pkgdir/" \
    install
}

# vim:set ts=2 sw=2 et:
