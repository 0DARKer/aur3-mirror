# Maintainer: Michael Jakl <jakl.michael@gmail.com>
pkgname=julia-git
pkgver=20120228
pkgrel=1
epoch=
pkgdesc="Julia is a high-level, high-performance, dynamic programming language."
arch=('any')
url="http://julialang.org"
license=('GPL')
depends=('llvm' 'readline' 'pcre' 'gcc-fortran')
makedepends=('git' 'wget' 'perl' 'gcc')
optdepends=('lighttpd')
provides=('julia')
conflicts=('julia')
install=julia.install

_gitroot=git://github.com/JuliaLang/julia.git
_gitname=julia

build() {
  cd "$srcdir"

  echo "Updating from upstream"
  if [[ -d $_gitname ]]; then
    cd $_gitname && git pull origin && cd ..
  else
    git clone $_gitroot
  fi

  rm -rf $_gitname-build
  git clone $_gitname $_gitname-build

  echo "Compiling"
  cd "$srcdir/$_gitname-build"
  make PREFIX=/usr USE_SYSTEM_LLVM=1 USE_SYSTEM_READLINE=1 USE_SYSTEM_PCRE=1
}

package() {
  cd "$srcdir/$_gitname-build"
  make PREFIX=/usr USE_SYSTEM_LLVM=1 USE_SYSTEM_READLINE=1 USE_SYSTEM_PCRE=1 DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
