## arg 1:  the new package version
post_install() {
  if ! getent group rspamd >/dev/null; then
    groupadd rspamd
  fi
  if ! getent passwd rspamd >/dev/null; then
    useradd -c 'rspam daemon' -g rspamd -d / -s /sbin/nologin rspamd
    passwd -l rspamd >/dev/null
  fi
  chown rspamd:rspamd /var/lib/rspamd
  systemd-tmpfiles --create rspamd.conf
}

## arg 1:  the old package version
post_remove() {
  if getent passwd rspamd >/dev/null; then
    userdel rspamd
  fi
  if getent group rspamd >/dev/null; then
    groupdel rspamd
  fi
}

