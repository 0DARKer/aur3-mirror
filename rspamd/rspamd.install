## arg 1:  the new package version
post_install() {
  if ! getent passwd _rspamd >/dev/null; then
    useradd -c 'rspam daemon' -g _rspamd -d /var/lib/rspamd -s /sbin/nologin _rspamd
    passwd -l _rspamd >/dev/null
  fi
}

## arg 1:  the old package version
post_remove() {
  if getent passwd rspamd >/dev/null; then
    userdel rspamd
  fi
}

