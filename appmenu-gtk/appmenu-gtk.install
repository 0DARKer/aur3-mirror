post_install() {
	libtool --finish /usr/lib/gtk-2.0/2.10.0/menuproxies
	echo ':: Please add the following line in your /etc/profile'
	echo ':: export UBUNTU_MENUPROXY="libappmenu.so"'
}

post_remove() {
        echo ':: You can remove the following line from your /etc/profile'
        echo ':: export UBUNTU_MENUPROXY="libappmenu.so"'
}

