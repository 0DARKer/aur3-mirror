pkgname=appmenu-gtk
pkgbranch=0.2
pkgver=0.1.95
pkgrel=2
pkgdesc="Application menu module for GTK+"
arch=('i686' 'x86_64')
url="https://launchpad.net/appmenu-gtk"
license=('GPL')
install=(appmenu-gtk.install)
depends=('libdbusmenu' 'dbus-glib' 'gtk2-appmenu')
makedepends=('intltool' 'gnome-doc-utils')
source=(http://launchpad.net/${pkgname}/${pkgbranch}/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz)
md5sums=(5db669842989c36fec5c5a53cb377fd4)

build() {
cd "${srcdir}"/${pkgname}-${pkgver}
./configure --prefix=/usr
make
}

package() {
cd "${srcdir}"/${pkgname}-${pkgver}
make DESTDIR="${pkgdir}" install
}
