pkgname=appmenu-gtk
pkgbranch=0.2
pkgver=0.2.1
pkgrel=1
pkgdesc="Application menu module for GTK+"
arch=('i686' 'x86_64')
url="https://launchpad.net/appmenu-gtk"
license=('GPL')
install=(appmenu-gtk.install)
depends=('libdbusmenu>=0.3.101' 'dbus-glib' 'gtk2-appmenu')
makedepends=('intltool' 'gnome-doc-utils')
source=(http://launchpad.net/${pkgname}/${pkgbranch}/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz)
md5sums=(a4449db3877b6826cdffbd5e2e7cdee7)

build() {
cd "${srcdir}"/${pkgname}-${pkgver}
./configure --prefix=/usr
make
}

package() {
cd "${srcdir}"/${pkgname}-${pkgver}
make DESTDIR="${pkgdir}" install
}
