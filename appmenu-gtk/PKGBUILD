pkgname=appmenu-gtk
pkgbranch=0.2
pkgver=0.1.91
pkgrel=1
pkgdesc="Application menu module for GTK+"
arch=('i686' 'x86_64')
url="https://launchpad.net/appmenu-gtk"
license=('GPL')
install=(appmenu-gtk.install)
depends=('libdbusmenu' 'dbus-glib' 'gtk2')
makedepends=('intltool' 'gnome-doc-utils')
source=(http://launchpad.net/${pkgname}/${pkgbranch}/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz)
md5sums=(8656f814241454ec70be05ac48360e75)

build() {
cd "${srcdir}"/${pkgname}-${pkgver}
./configure --prefix=/usr
make
make DESTDIR="${pkgdir}" install

#rm -rf ${pkgdir}/usr/etc/
#mkdir -p ${pkgdir}/etc/X11/Xsession.d
#/bin/install -c -m 644 80appmenu '/home/george/ABS/sources/appmenu-gtk/pkg/etc/X11/Xsession.d'

# cleanup docs
#rm -R "$pkgdir"/usr/share
}
