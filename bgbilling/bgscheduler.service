[Unit]
Description=Scheduler service for the billing system BGBilling 5.2
Requires=bgbilling.service
After=bgbilling.service

[Service]
EnvironmentFile=/etc/conf.d/bgbilling
Type=forking
ExecStart=/opt/bgbilling/scheduler.sh -estart
ExecStop=/opt/bgbilling/scheduler.sh -estop

[Install]
WantedBy=multi-user.target
