[Unit]
Description=Scheduler service for the billing system BGBilling
Requires=bgbilling60.service
After=bgbilling60.service

[Service]
EnvironmentFile=/etc/conf.d/bgbilling
Type=forking
ExecStart=/opt/bgbilling/scheduler.sh -estart
ExecStop=/opt/bgbilling/scheduler.sh -estop

[Install]
WantedBy=multi-user.target
