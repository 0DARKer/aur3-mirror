# Maintainer: almostalive <almostalive2003 at gmail dot com>

pkgname=libretro-pcsx_rearmed-git
pkgver=20130117
pkgrel=1
pkgdesc="libretro implementation of PCSX-ReARMed."
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/pcsx_rearmed"
license=('custom')
makedepends=('git')

_gitroot="git://github.com/notaz/pcsx_rearmed.git"
_gitname="pcsx_rearmed"

build() 
{
   cd $srcdir

   msg "Cloning pcsx_rearmed from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   ./configure --platform=libretro && make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-pcsx_rearmed.so
}

