# Maintainer: Christian Galander <galander.c@gmail.com>

pkgname=plasma-theme-diamond
pkgver=1.5.2
pkgrel=1
pkgdesc="Transparent theme for KDE 4.x"
arch=('i686' 'x86_64')
license=('GPL')
url="http://kde-look.org/content/show.php/Diamond?content=153930"
depends=('kdebase-workspace')
source=(http://kde-look.org/CONTENT/content-files/153930-Diamond.zip)
md5sums='7574fe6da2a6a1c74cdee4a2dc09fdaa'

build() {
   mkdir -p ${pkgdir}/usr/share/apps/desktoptheme
   cd ${srcdir}
   cp -R Diamond ${pkgdir}/usr/share/apps/desktoptheme
   chmod 755 -R ${pkgdir}/usr/share/apps/desktoptheme/Diamond
}
