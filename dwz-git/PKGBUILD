_pkgname=dwz
pkgname=dwz-git
pkgver=0.11
pkgrel=2
pkgdesc='DWARF optimization and duplicate removal tool'
arch=('i686' 'x86_64')
license=('GPL2' 'GPL3')
url="http://www.sourceware.org/git/gitweb.cgi?p=dwz.git;a=summary"
depends=('elfutils')
source=("git://sourceware.org/git/dwz.git")
md5sums=('SKIP')
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  git describe | cut -f2- -d -
}

build() {
  cd "$_pkgname"
  make V=1
}

check() {
  cd "$_pkgname"
}

package() {
  cd "$_pkgname"
  make DESTDIR="$pkgdir" prefix=/usr install
}
