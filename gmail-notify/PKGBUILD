# Contributor: Alessio 'mOLOk' Bolognino <themolok@gmail.com>

pkgname=gmail-notify
pkgver=1.6.1.1
pkgrel=1
pkgdesc="A Linux alternative for the notifier program released by Google"
arch=('i686')
url="http://gmail-notify.sourceforge.net"
license="GPL"
depends=('python' 'gtk' 'pygtk')
install=gmail-notify.install
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz gmail-notify.patch)
md5sums=('7d62330064b3cc70c674cb721f36975a' '1d4d0c39af6f63febc16cac95f0f937e')

build() {
  cd $startdir/src/$pkgname

  patch < ../gmail-notify.patch

  mkdir -p $startdir/pkg/{etc,usr/{bin,share/gmail-notify}} 
  cp -R *  $startdir/pkg/usr/share/gmail-notify/

  mv $startdir/pkg/usr/share/gmail-notify/notifier.conf.sample \
        $startdir/pkg/etc/

  ln -s ../share/$pkgname/notifier.py $startdir/pkg/usr/bin/gmail-notify

}
