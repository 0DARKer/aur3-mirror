post_install() {
  cat << EOF

==> Copy the file /usr/share/gmail-notify/notifier.conf.sample to your home directory
==> ( ~/.notifier.conf ) and make sure only you have read access to the file with 
==> chmod 600 ~/.notifier.conf

EOF
}

post_upgrade() {

echo "Make sure only you have read access on ~/.notifier.conf with \"chmod 600 ~/.notifier.conf\""

}

op=$1
shift

$op $*
