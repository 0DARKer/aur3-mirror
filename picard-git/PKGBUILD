pkgname=picard-git
pkgver=1.2.13.ga3fa949
pkgrel=1
pkgdesc="MusicBrainz tagging application"
arch=('i686' 'x86_64')
url="http://musicbrainz.org/doc/MusicBrainz_Picard"
license=('GPL')
depends=('python2-pyqt' 'mutagen')
optdepends=('libdiscid: CD-Lookup feature'
            'chromaprint: AcoustID integration')
makedepends=('git')
provides=('picard')
conflicts=('picard' 'picard-qt' 'picard-bzr')
source=('git://github.com/musicbrainz/picard.git')
md5sums=('SKIP')

pkgver(){
    cd "$srcdir/picard"
    echo "$(git describe --tags --always | sed 's|release-||g' | sed 's/-/./g' )"
}

package() {
    cd "$srcdir/picard"
    python2 setup.py install --root=$pkgdir
}
