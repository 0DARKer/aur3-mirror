# Maintainer: Markus Heuser <markus.heuser@web.de>

pkgname=samtools
pkgver=0.1.12a
pkgrel=1
pkgdesc="Efficient utilities on manipulating alignments in the SAM format."
arch=("x86_64")
url="http://samtools.sourceforge.net/"
license=('MIT')
depends=('perl' 'zlib')

source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('500ae32fb431de3940e0e955744b9b36')

build() {
  cd $srcdir/$pkgname-$pkgver
  make all
  
  # Install main program executable
  install -d "$pkgdir/usr/bin/"
  install -m755 samtools "$pkgdir/usr/bin"

  # Install misc stuff
  cd misc
  for f in $(ls -l)
  do
    if [ -x "$f" ]; then
      install -m755 "$f" "$pkgdir/usr/bin"
    fi
  done
}
