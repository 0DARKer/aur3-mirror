# Contributor: Mephistopheles <mephisto.pheles.nyan @ gmail.com>
pkgname=imule-new
pkgver=1.4.7.1
pkgrel=1
pkgdesc="Anonymous P2P file sharing software"
conflicts=('imule')
url="http://www.imule.i2p.tin0.de"
license=('GPL')
depends=('wxgtk' 'crypto++')
optdepends=('i2p')
arch=('i686' 'x86_64')
source=(http://aceini.no-ip.info/imule/1.4.7.1/iMule-1.4.7.1-src.tbz)
md5sums=('b601e8e5cf9fe21219fc571b77126098')
build() {
  cd $srcdir/iMule-${pkgver}-src
  ./configure --enable-debug=no --enable-optimize=yes --prefix=/usr --disable-profile  LIBS="-lpthread -lm -ldl"
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
