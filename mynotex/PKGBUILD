# Contributor: goten002 <goten002@gmail.com>
pkgname=mynotex
pkgver=1.1.4
pkgrel=1
pkgdesc="A free note-taking and notes manager software for Linux."
url="http://sites.google.com/site/mynotex"
license=('GPL')
arch=('i686' 'x86_64')
depends=('sqlite3')

if [ $CARCH="i686" ]; then
source=(http://sites.google.com/site/mynotex/files/executable_mynotex-i386_${pkgver}.tar.gz)
md5sums=('0121e66261064ab08c111c3b7108f725')
else
source=(http://sites.google.com/site/mynotex/files/executable-mynotex-amd64_${pkgver}.tar.gz)
md5sums=('7896715c45e0363639a5f1e41a53a620')
fi

build() {
  install -D -m 775 mynotex $pkgdir/usr/bin/mynotex
}
