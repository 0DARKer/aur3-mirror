# Maintainer: Nicolas Hureau <kalenz@lse.epita.fr>

pkgname=libgba-src
pkgver=20090222
pkgrel=1
pkgdesc='libgba for gameboy advance homebrew coding'
arch=('i686' 'x86_64')
url='http://www.devkitpro.org'
license=('GPL' 'LGPL')
groups=()
depends=('devkitarm')
makedepends=()
optdepends=()
provides=('libgba')
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
source=(http://downloads.sourceforge.net/sourceforge/devkitpro/${pkgname}-${pkgver}.tar.bz2)
noextract=()
md5sums=('8d375493c02c2be10252029ad99b9503')

build() {
  cd $srcdir

  make $MAKEFLAGS

  mkdir -p $pkgdir/opt/devkitpro/libgba
  mv $srcdir/include $pkgdir/opt/devkitpro/libgba
  mv $srcdir/lib $pkgdir/opt/devkitpro/libgba
  mv $srcdir/libgba_license.txt $pkgdir/opt/devkitpro/libgba

  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  ln -s /opt/devkitpro/$pkgname/${pkgname}_license.txt $pkgdir/usr/share/licenses/$pkgname/${pkgname}_license.txt
}

# vim:set ts=2 sw=2 et:
