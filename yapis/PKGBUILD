pkgname=yapis
pkgver=20130317
pkgrel=1
pkgdesc="Yet another python information script to display system informations!"

arch=('i686' 'x86_64')
url="https://github.com/MadNoob/yapis.git"
license=('GPL')
depends=('python3')
makedepends=('git')
md5sums=()

gitroot="git://github.com/MadNoob/yapis.git"
gitname="yapis"
homedir=$HOME

build() {
	cd ${srcdir}
	rm -rf yapis	
	msg "Starting to clone git repository..."

	git clone ${gitroot}

	msg "Done!"
	msg "Starting to make ${pkgname} package!"

	cd ${srcdir}/yapis

	mkdir -p ${homedir}/.config/yapis/
	
	install -D -m644 yapis.conf ${homedir}/.config/yapis/yapis.conf || return 1
	install -D -m644 yapis_colors.conf ${homedir}/.config/yapis/yapis_colors.conf || return 1
	install -D -m755 yapis ${pkgdir}/usr/bin/yapis || return 1
	install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
