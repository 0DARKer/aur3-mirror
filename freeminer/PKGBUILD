# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=freeminer
pkgver=0.4.9.3
pkgrel=1
pkgdesc='Minecraft-inspired sandbox game based on Minetest'
arch=('i686' 'x86_64')
url="http://freeminer.org/"
license=('LGPL')
depends=('curl' 'freetype2' 'hicolor-icon-theme' 'irrlicht' 'luajit' 'leveldb' 'libvorbis' 'openal' 'sqlite')
makedepends=('cmake')
install=freeminer.install
source=("https://github.com/freeminer/freeminer/archive/${pkgver}.tar.gz")

build() {
	cd "${srcdir}/freeminer-${pkgver}"
	cmake -D CMAKE_INSTALL_PREFIX=/usr .
	make
}

package() {
	cd "${srcdir}/freeminer-${pkgver}"
	make DESTDIR="$pkgdir" install
}

md5sums=('34a95c82727a8e75a0fb7ea2da029973')
