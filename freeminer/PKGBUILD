# Contributor: kusakata <shohei atmark kusakata period com>

pkgname=freeminer
pkgver=0.4.10.4
pkgrel=1
pkgdesc="An open source sandbox game inspired by Minecraft."
arch=(
	"$CARCH"
)
url="http://freeminer.org/"
license=(
	"GPL3"
)

depends=(
	"irrlicht"
	"leveldb"
	"libvorbis"
	"openal"
	"sqlite"
	"curl"
	"luajit"
	"freetype2"
	"hicolor-icon-theme"
)
optdepends=()
makedepends=(
	"cmake"
)
provides=(
	"${pkgname}=${pkgver}"
)
conflicts=(
	"${pkgname}"
	"${pkgname}-git"
)
replaces=(
	"${pkgname}"
	"${pkgname}-git"
)

install=${pkgname}.install

source=(
	"https://www.dropbox.com/s/21lxk2jgomhvf21/${pkgname}-${pkgver}.tar.gz"
	"${pkgname}.install"
)
md5sums=(
	"3776a4f7739017e0a2ac1c070ec74424"
	"fddfcb7efb5aad784ef04db97bba69e8"
)
sha512sums=(
	"8eea948fa1c6ca30c95ab394cc6ae8880054566ad1cec6ae1919ff7536b67fc487fa1ce64b52b2179ab97f0c6d868786181bf3e78cb324e50dbf73f7cb5d3c6c"
	"dbb54802291438a256147765325be970379ee761f20b85ec31d878d145dcccd209ae7e521ae1ee5981adff0c7f62a50b582c0d47db59d491db07c9df842e635c"
)

build() {
	# Number of jobs
	declare -i njobs=$(nproc)
	
	if [[ $(nproc) -ge 8 ]]; then
		njobs=$(( $njobs/2 ))
	fi
	
	# Building package
	cd ${srcdir}/${pkgname}
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DRUN_IN_PLACE=0
	make -j${njobs}
}

package() {
	# Installing package
	cd ${srcdir}/${pkgname}
	make DESTDIR=${pkgdir} install
}