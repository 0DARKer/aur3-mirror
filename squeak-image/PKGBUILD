# Contributor: solsTiCe d'Hiver <solstice.dhiver@gmail.com>

pkgname=squeak-image
pkgver=4.1
pkgrel=1
arch=('any')
pkgdesc="Image file for squeak VM"
url="http://www.squeak.org"
license=('custom:MIT' 'APACHE')
depends=('squeak-vm')
source=(http://ftp.squeak.org/4.1/unix-linux/Squeak4.1.zip)
md5sums=('180df1272db56316b79980facb9a1a46')

build() {
  mkdir -p $pkgdir/usr/lib/squeak

  install -m644 SqueakV${pkgver/./}.sources $pkgdir/usr/lib/squeak/
  install -m644 Squeak$pkgver.image $pkgdir/usr/lib/squeak/Squeak$pkgver.image
  install -m644 Squeak$pkgver.changes $pkgdir/usr/lib/squeak/Squeak$pkgver.changes

  ln -s Squeak$pkgver.image $pkgdir/usr/lib/squeak/squeak.image
  ln -s Squeak$pkgver.changes $pkgdir/usr/lib/squeak/squeak.changes
}
