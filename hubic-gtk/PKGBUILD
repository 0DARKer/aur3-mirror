pkgname=hubic-gtk
pkgver=0.3
pkgrel=1
_fossilver=034f435f1d5777317d797515b055ac03ceeb36e7
pkgdesc="An attempt to get a status icon for Hubic on Linux"
arch=('any')
url="http://projects.depar.is/divers/dir?ci=tip&name=hubic_status"
license=('WTFPL')
depends=('hubic' 'python2' 'pygtk' 'python2-dbus' 'python2-notify' 'python2-xdg')
source=($pkgname-$pkgver.tar.gz::http://projects.depar.is/divers/raw/hubic_status/archlinux/$pkgname-$pkgver.tar.gz?name=$_fossilver)
sha1sums=('034f435f1d5777317d797515b055ac03ceeb36e7')

package() {
  cd $srcdir/hubic_status
  make DEST=$pkgdir/usr
}

