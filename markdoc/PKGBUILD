# Maintainer: Patrick McCarty <pnorcks at gmail dot com>

pkgname=markdoc
_githubuser=zacharyvoase
pkgver=0.6.5
pkgrel=2
pkgdesc="A lightweight Markdown-based wiki system"
arch=(any)
url="http://markdoc.org/"
depends=('python2-argparse' 'cherrypy' 'python-jinja' 'python-markdown' 'python-pygments' 'python-yaml' 'python2-webob' 'python2' 'rsync')
license=('Unlicense')
source=(https://github.com/$_githubuser/$pkgname/tarball/v$pkgver)
md5sums=('cebdc16f9c0bbbf9a295c01210dacd3a')
sha256sums=('2e0ab021cdc6d4c5faa17337c3b9df50d60c4e3142eb9a8058e0bb5c187a0746')

build() {
  cd "$srcdir/$_githubuser-$pkgname-"*
  python2 setup.py install --root="$pkgdir" --prefix=/usr
  install -Dm644 UNLICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

