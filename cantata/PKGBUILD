pkgname=cantata
pkgver=0.6.1
pkgdesc="cantata is a (yet another!) client for the music player daemon (MPD)."
pkgrel=2
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/Cantata?content=147733&PHPSESSID=a7fe7dc0cebfbf155699356fce7e7c7b"
license=(GPL)
makedepends=('cmake' 'automoc4')
provides=('cantata')
conflicts=('cantata-qt')
depends=('kdelibs' 'libmtp' 'mpg123' 'taglib')
optdepends=('speex: replaygain support')
install=${pkgname}.install
source=("http://kde-apps.org/CONTENT/content-files/147733-${pkgname}-${pkgver}.tar.bz2")
md5sums=('f6f41f9c12e4d4bddb030d6ae8d6a491')

build(){	
  cd $srcdir/${pkgname}-${pkgver}
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
  make DESTDIR=${pkgdir} install
} 
