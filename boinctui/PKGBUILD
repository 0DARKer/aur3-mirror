# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=boinctui
pkgver=2.3.4
pkgrel=2
pkgdesc="Curses based fullscreen BOINC manager"
arch=('i686' 'x86_64')
url="http://boinctui.googlecode.com/"
license=('GPL')
depends=('expat' 'gcc-libs' 'gnutls')
makedepends=("cmake")
source=("http://sourceforge.net/projects/boinctui/files/${pkgname}_${pkgver}.tar.gz")

build() {
  cd $pkgname-$pkgver
  autoconf
  ./configure --prefix=/usr
  make 
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}

sha512sums=('0b0b577c1da4b49dd01ea408c5052c0aff7533d406e6cafc51a98c5617322dd24c666c14954b3c7d2044e52c33fd4150d3f5f7eb7f1630e1c0268d398ffec9aa')
