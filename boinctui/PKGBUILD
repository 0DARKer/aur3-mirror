# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=boinctui
pkgver=2.2.1
pkgrel=1
pkgdesc="Curses based fullscreen BOINC manager"
arch=('i686' 'x86_64')
url="http://boinctui.googlecode.com/"
license=('GPL')
depends=('expat' 'gcc-libs' 'gnutls')
makedepends=("cmake")
source=("http://boinctui.googlecode.com/files/${pkgname}_$pkgver.tar.gz")

build() {
  cd "$srcdir/$pkgname-$pkgver"
  autoconf
  ./configure --prefix=/usr
  make 
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}

md5sums=('f1b39917a2a65dad2ba1aae1641df79c')
