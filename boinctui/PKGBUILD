# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=boinctui
pkgver=2.3.1
pkgrel=1
pkgdesc="Curses based fullscreen BOINC manager"
arch=('i686' 'x86_64')
url="http://boinctui.googlecode.com/"
license=('GPL')
depends=('expat' 'gcc-libs' 'gnutls')
makedepends=("cmake")
source=("http://boinctui.googlecode.com/files/${pkgname}_$pkgver.tar.gz")

build() {
  cd "$srcdir/$pkgname-$pkgver"
  autoconf
  ./configure --prefix=/usr
  make 
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}

sha512sums=('1df211458dd68c34f955a92c212a3ecc57cbd91ec087af9074b29977e2f70ab67cdb76558565b8f2c2b2debda89a70e5ca4fade5bf2915175427e80c35cf2701')
