# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=boinctui
pkgver=2.1.0
pkgrel=1
pkgdesc="Curses based fullscreen BOINC manager"
arch=('i686' 'x86_64')
url="http://boinctui.googlecode.com/"
license=('GPL')
depends=('openssl' 'expat' 'gcc-libs')
makedepends=("cmake")
source=("http://boinctui.googlecode.com/files/${pkgname}_$pkgver.tar.gz")

build() {
  cd "$srcdir/$pkgname-$pkgver"
  autoconf
  ./configure --prefix=/usr
  make 
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}

md5sums=('75879b22ff09e3941eb9e176ccba4ab2')
