# Contributor: Rick W. Chen <stuffcorpse at archlinux dot us>

pkgname=fortune-mod-the-godfather
pkgver=3.0
pkgrel=1
pkgdesc="The Godfather fortune cookie files"
arch=(i686 x86_64)
url="http://izb.knu.ac.kr/~bh/fortune/"
depends=('fortune-mod')
groups=('fortune-mods')
license=('custom')
source=("http://izb.knu.ac.kr/~bh/fortune/$pkgname-$pkgver.tar.gz")
md5sums=('82c7b8e96e583ee09c2699c9e4d3c467')

build()
{
	cd $srcdir/$pkgname-$pkgver

	strfile ./the-godfather ./the-godfather.dat || return 1

	install -D -m644 $srcdir/$pkgname-$pkgver/the-godfather \
		$pkgdir/usr/share/fortune/the-godfather
	install -D -m644 $srcdir/$pkgname-$pkgver/the-godfather.dat \
		$pkgdir/usr/share/fortune/the-godfather.dat
	install -D -m644 $srcdir/$pkgname-$pkgver/README \
		$pkgdir/usr/share/licenses/$pkgname/LICENSE
}
