pkgname='perl-moosex-types-structured'
pkgver='0.23'
pkgrel='1'
pkgdesc="MooseX::Types::Structured - Structured Type Constraints for Moose"
arch=('any')
url='http://search.cpan.org/dist/MooseX-Types-Structured'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-datetime' 'perl-devel-partialdump>=0.13' 'perl-moose' 'perl-moosex-types' 'perl-moosex-types-datetime' 'perl-sub-exporter>=0.982' 'perl-test-exception>=0.27')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/J/JJ/JJNAPIORK/MooseX-Types-Structured-0.23.tar.gz')
