# Contributor: Whaevr <whaevr[at]gmail[dot]com>
pkgname=wxdesigner
pkgver=2.19
pkgrel=2
pkgdesc="visual development tool for wxWidgets - supporting C++, Python, Perl, C# and XML"
arch=('i686' 'x86_64')
[ "$CARCH" = "i686"   ] && ARCH=x86
[ "$CARCH" = "x86_64" ] && ARCH=x86_64
url="http://www.roebling.de/"
license=('as-is')
depends=('gtk2')
makedepends=('rpmextract')
[ "$CARCH" = "i686" ] && source=(http://www.wxdesigner-software.de/wxDesignerU-$pkgver-2.i586.rpm)
[ "$CARCH" = "x86_64" ] && source=(http://www.wxdesigner-software.de/wxDesignerU-$pkgver-3.x86_64.rpm)
[ "$CARCH" = "i686" ] && md5sums=('187715f8ad65badbdaad336351933930')
[ "$CARCH" = "x86_64" ] && md5sums=('47a656a1f8028ce5568686b4ab5ff03c')


build() {
cd ${startdir}/src

# extract rpm
  [ "$CARCH" = "i686" ] &&  rpmextract.sh wxDesignerU-$pkgver-2.i586.rpm
  [ "$CARCH" = "x86_64" ] &&  rpmextract.sh wxDesignerU-$pkgver-3.x86_64.rpm

# set permissions and copy files
  chmod 755 opt
  cp -a opt ${startdir}/pkg || return 1

# create symlink
  mkdir -p $startdir/pkg/usr/bin
  cd $startdir/pkg/usr/bin
  ln -s /opt/wxDesigner/wxDesigner wxDesigner || return 1
}

