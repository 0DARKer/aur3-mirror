# Contributor: disturbed1 <disturbed1976@gmail.com>

pkgname=pan-svn
pkgver=335
pkgrel=1
pkgdesc="Powerfull GTK newsreader with NZB support. (svn)"
url="http://pan.rebelbase.com"
depends=('gmime' 'gtkspell')
makedepends=('pkgconfig' 'subversion' 'gnome-common' 'intltool')
conflicts=('pan' 'pan-cvs')
provides=('pan')
arch=('i686' 'x86_64')
license=('GPL')
source=(gcc4.3.patch)
md5sums=('4f3cf49453b0158a69a689bdb5a0992a')

_svntrunk="http://svn.gnome.org/svn/pan2/trunk"
_svnmod="pan2"

build ()
{
	msg "Checking out $_svnmod"
	svn co $_svntrunk $_svnmod
	
	cd $startdir/src/$_svnmod/pan
	#Comment out the next line if you ARE NOT using gcc4.3
	patch -Np1 -i $startdir/gcc4.3.patch || return 1
	cd ..

	msg "Running autogen.sh and make"
	./autogen.sh --prefix=/usr || return 1
	make || return 1
	make DESTDIR=$startdir/pkg install	
}
