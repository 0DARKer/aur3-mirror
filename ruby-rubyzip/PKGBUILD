pkgname=ruby-rubyzip
_gemname=rubyzip
pkgver=0.9.5
pkgrel=1
pkgdesc="A ruby module for reading and writing zip files."
arch=(any)
url="http://rubyzip.sourceforge.net/"
license=('ruby')
depends=('ruby')
makedepends=('ruby')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('86348e748267b03685cf0afcbf55d9a8')

package() {
  cd $srcdir
  #export HOME="/tmp"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" "${_gemname}-${pkgver}.gem"
}
