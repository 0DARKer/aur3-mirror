# Maintainer: Vorzard <vorzard at plexomat dot com>

pkgname=sqlite-analyzer
pkgver=3071400
pkgrel=1
pkgdesc="An analysis program for database files compatible with all SQLite versions through 3.7.14 and beyond."
url="http://www.sqlite.org/download.html"
arch=('i686' 'x86_64')
license=('custom')
depends=('tcl>=8.6')
source=("http://www.sqlite.org/sqlite-analyzer-linux-x86-$pkgver.zip")
sha1sums=('122dc68111b78b17418dbab75a5ef206d599c0b3')

package() {
  mkdir -p $pkgdir/usr/bin
  install -Dm 755 $srcdir/sqlite3_analyzer $pkgdir/usr/bin
  ln -sf sqlite3_analyzer $pkgdir/usr/bin/sqlite_analyzer
}
