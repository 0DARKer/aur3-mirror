# Contributor: Rudolf Zeidler <rudolf dot zeidler at gmail dot com>
pkgname=rtorrent-unstable
_pkgname=rtorrent
pkgver=0.8.5
pkgrel=1
pkgdesc="Ncurses BitTorrent client based on libTorrent"
arch=(x86_64 i686)
url="http://libtorrent.rakshasa.no"
license=('GPL')
depends=('libtorrent-unstable>=0.12.5' 'curl')
provides=('rtorrent')
conflicts=('rtorrent' 'rtorrent-svn')
source=("http://libtorrent.rakshasa.no/downloads/$_pkgname-$pkgver.tar.gz")
md5sums=('e701095e1824b7e512a17000f4c0a783')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  ./autogen.sh
  ./configure --prefix=/usr --disable-debug
  make || return 1
  make DESTDIR="$pkgdir" install
}

