# Maintainer: Damir Jelic <poljarinho@gmail.com>

pkgname=rtorrent-unstable
_pkgname=rtorrent
pkgver=0.9.0
pkgrel=1
pkgdesc="Ncurses BitTorrent client based on libTorrent"
arch=('i686' 'x86_64')
url="http://libtorrent.rakshasa.no"
license=('GPL')
depends=('libtorrent-unstable=0.13.0' 'curl>=7.14.3' 'xmlrpc-c>=1858')
provides=('rtorrent')
conflicts=('rtorrent' 'rtorrent-svn')
source=("http://libtorrent.rakshasa.no/downloads/$_pkgname-$pkgver.tar.gz") 
md5sums=('9bc258d7a63dd13e3348f310ae26a434')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  CXXFLAGS="$CXXFLAGS  -fno-strict-aliasing" \
    ./configure --prefix=/usr --enable-debug --with-xmlrpc-c 
  sed -i -e 's/^LIBS = .*/& -pthread/' src/Makefile
  make 
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
