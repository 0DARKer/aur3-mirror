pkgname=arachnophilia
_pkgname=Arachnophilia
pkgver=5.4.2411
pkgrel=1
pkgdesc="Java HTML editor"
arch=('i686' 'x86_64')
url="http://www.arachnoid.com/arachnophilia/"
license=('careware')
depends=('java-runtime' 'bash')
source=(http://www.arachnoid.com/arachnophilia/Arachnophilia.jar
        arachnophilia.desktop
        arachnophilia
        license)
noextract=(Arachnophilia.jar)
md5sums=('22f88489360e97dcb01354ca958ee130'
         '5a46c5fb0a113b44854cac82997c4fac'
         'ec866b46852d97f64ca1fec1feb8d2e2'
         'fe7b743b42313dbe07af41c55b284119')


build() {

  # Create pkgdir folders
  install -d $pkgdir/usr/share/licenses/$pkgname || return 1
  install -d $pkgdir/usr/share/java/$pkgname $pkgdir/usr/bin || return 1
  install -d $pkgdir/usr/share/{applications,icons} || return 1

  # Install files
  install -Dm755 $startdir/$_pkgname.jar $pkgdir/usr/share/java/$pkgname/$_pkgname.jar || return 1
  install -Dm755 $startdir/$pkgname $pkgdir/usr/bin/ || return 1
  install $startdir/license $pkgdir/usr/share/licenses/$pkgname/ || return 1

  # icon/.desktop
  jar xf $_pkgname.jar $_pkgname.png || return 1
  install -Dm644 $srcdir/$_pkgname.png $pkgdir/usr/share/icons/$pkgname.png || return 1
  install -Dm644 $startdir/$pkgname.desktop $pkgdir/usr/share/applications || return 1

}