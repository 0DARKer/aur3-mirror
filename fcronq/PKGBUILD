pkgname=fcronq
_realname_=FcronQ
pkgver=0.4.1
pkgrel=1
pkgdesc="An Fcron GUI"
arch=("any")
url=http://code.google.com/p/fcronq/
license=("GPL3")
depends=("pyqt" "fcron")
optdepends=("gksu: A SU(do) GUI"
			"terminal: A shell GUI")
install="${_realname_}.install"
source=(http://prdownloads.sourceforge.net/${pkgname}/${_realname_}-${pkgver}.tar.bz2)

build() {
	cd "${srcdir}"/${_realname_}/Build
	
	# Fixes
	sed -i "s|slCmdArgs.append(\"'\" + Settings.Status.sScript + \"'\")|slCmdArgs.append(Settings.Status.sScript)|g" ../Source/Thread.py

	#make uninstall
	#make clean
	make
}

package() {
	cd "${srcdir}"/${_realname_}/Build

	make DESTDIR="${pkgdir}" install

	# Messages
	msg "Seek further information or send feedback via the 'Help' menu."
}

sha1sums=('b0f2be91df7a8ccab06370be40cb74395d18042d')
