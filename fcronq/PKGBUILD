# FcronQ: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>

pkgname=fcronq
realname=FcronQ
pkgver=0.3.0
pkgrel=2
pkgdesc="An Fcron GUI"
arch=("any")
url=http://${realname}.Xavion.name
license=("GPL3")
depends=("python-qt>=4.5" "fcron>=3")
#depends=("python>=3" "pyqt-dev>=4.5" "fcron>=3")
makedepends=("make>=3.80")
optdepends=("gksu: A SU(do) GUI"
			"terminal: A shell GUI")
install="${realname}.install"
source=(http://prdownloads.sourceforge.net/${pkgname}/${realname}-${pkgver}.tar.bz2)

build() {
	cd ${srcdir}/${realname}/Build
	
	# Fixes
	sed -i "s|slCmdArgs.append(\"'\" + Settings.Status.sScript + \"'\")|slCmdArgs.append(Settings.Status.sScript)|g" ../Source/Thread.py || return 1

	#make uninstall || return 1
	#make clean || return 1
	make || return 1
}

package() {
	cd ${srcdir}/${realname}/Build

	make DESTDIR=${pkgdir} install || return 1

	# Messages
	msg "Seek further information or send feedback via the 'Help' menu."
}


sha1sums=('9982c6eb994fc9b431eae3d926424603b5c24c59')
