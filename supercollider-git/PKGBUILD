# Maintainer: Arch Linux Pro Audio <archaudio-devel@archaudio.org>
# Contributor: hm_b <hb@uiae.de>
pkgname=supercollider-git
pkgver=20101223
pkgrel=1
pkgdesc="An environment and programming language for real time audio synthesis and algorithmic composition."
url="http://supercollider.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('jack' 'fftw' 'avahi')
makedepends=('git' 'libsndfile>=1.0' 'emacs' 'vim' 'gedit' 'icu' 'gcc>=3.0' 'pkgconfig>=0.14.0' 'cmake' 'alsa-lib')
#optdepends=('emacs' 'vim' 'ruby' 'gedit')
conflicts=('supercollider')
provides=('supercollider')

source=()
md5sums=()

_gitroot="git://supercollider.git.sourceforge.net/gitroot/supercollider/supercollider"
_gitname="supercollider"

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    (cd $_gitname && git pull origin && git submodule update)
    msg "The local files are updated."
  else
    git clone $_gitroot
    (cd $_gitname && git submodule init && git submodule update)
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r $_gitname $_gitname-build
  cd $_gitname-build/
  
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. -DSC_ED=1 -DSC_EL=1 -DSC_VIM=1 || return 1
  
  make
  make DESTDIR=$pkgdir/ install || return 1

  rm -rf $srcdir/$_gitname-build
}
# vim:syntax=sh
