# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=tuxfootball
pkgver=0.3.0
pkgrel=2
pkgdesc="Great 2D soccer game"
arch=('i686' 'x86_64')
url="http://tuxfootball.sourceforge.net/"
license=('GPL2')
depends=('sdl_image' 'sdl_mixer')
makedepends=('intltool' 'pkg-config')
source=(http://downloads.sourceforge.net/project/tuxfootball/0.3/$pkgname-$pkgver.tar.gz)
md5sums=('fa2475227ef30685887cc6e41663d4d3')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install

  # Desktop icon
  install -Dm644 ./data/graphics/football.png $pkgdir/usr/share/pixmaps/football.png
  install -Dm644 $startdir/tuxfootball.desktop $pkgdir/usr/share/applications/tuxfootball.desktop
}