# Maintainer: Michael Schubert <mschu.dev at gmaiL>

pkgname=python2-rpy2-hg
pkgver=2.3.6
_pkgver=${pkgver//./_}
pkgrel=1
pkgdesc="A simple, robust Python interface to the R Programming Language."
arch=('i686' 'x86_64')
url="http://rpy.sourceforge.net/"
license=('MPL' 'GPL' 'LGPL')
makedepends=('mercurial')
depends=('python2-numpy' 'r')
provides=('python2-rpy2')
conflicts=('python2-rpy2')

_hgroot=https://bitbucket.org/lgautier/rpy2
_hgrepo=rpy2

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [[ -d "$_hgrepo" ]]; then
    cd "$_hgrepo"
    hg pull -u -r RELEASE_$_pkgver
    msg "The local files are updated."
  else
    hg clone -r RELEASE_$_pkgver "$_hgroot" "$_hgrepo"
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/rpy2"
  python2 setup.py build
}

package() {
  cd "$srcdir/rpy2"
  python2 setup.py install --skip-build --prefix=/usr --root="$pkgdir" --optimize=1

  mkdir -p "$pkgdir/etc/ld.so.conf.d"
  echo /usr/lib/R/lib > "$pkgdir/etc/ld.so.conf.d/rpy2-py2.7.conf"
}

