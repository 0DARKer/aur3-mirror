# Contributor: Matthias Maennich <arch@maennich.net> and Mathieu Pasquet <mathieuivi@gmail.com>
pkgname=bzr-webdav
pkgver=63
pkgrel=1
pkgdesc="A WEBDAV plugin for Bazaar."
arch=('i686' 'x86_64')
url=('https://launchpad.net/bzr.webdav')
license=('GPL')
depends=('bzr')
source=()
md5sums=()

_bzrbranch=lp:bzr.webdav
_bzrmod=bzr.webdav

build() {
	msg "Connecting to the server...."

	bzr branch ${_bzrbranch} -q

	msg "BZR checkout done or server timeout"
	msg "Starting make..."

	cd $startdir/src/$_bzrmod

	python setup.py build || return 1
	python setup.py install --prefix=$startdir/pkg/usr install
}
