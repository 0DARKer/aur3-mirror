# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=ibacm
pkgver=1.0.7
pkgrel=1
pkgdesc="InfiniBand Communication Manager Assistant"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibumad' 'libibverbs')
source=("https://www.openfabrics.org/downloads/rdmacm/${pkgname}-${pkgver}.tar.gz")
# cksum start
md5sums=('f0994de8564a4f6061b73227ff5438d4')
sha512sums=('0f2ce8d0399d9d372fef7d962a5d83be60de521e40209e25f1c6d31477f2dfa2ec045139b06c02fe2392c064a10db3601316b8515d0fbc51a8db632b4f0a0e19')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}