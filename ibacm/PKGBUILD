# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=ibacm
pkgver=1.0.5
pkgrel=1
pkgdesc="InfiniBand Communication Manager Assistant"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibumad' 'libibverbs')
source=("https://www.openfabrics.org/downloads/rdmacm/${pkgname}-${pkgver}.tar.gz")
md5sums=('5d0504132d12fb39c5dce750380b6456')
sha512sums=('3ad9a90837516346fb7885d9416bfc78c70a73fa0bdae3f604eb2e1f9cf29d48f65037705b57b89733250b9eb712eda4b3cac9103d8e13d0a3853bb5e6e6e8c4')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" mandir='${prefix}/share/man' install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
