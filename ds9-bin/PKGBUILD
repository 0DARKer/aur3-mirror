# Maintainer:  <clu>

pkgname=ds9-bin  
_pkgname=ds9
pkgver=7.0
pkgrel=1 
pkgdesc="SAOImage DS9: Astronomical Data Visualization Application"
url="http://hea-www.harvard.edu/RD/ds9/"
arch=('i686' 'x86_64')
[ "${CARCH}" = 'i686' ] && _arch=''
[ "${CARCH}" = 'x86_64' ] && _arch='64'
license=('GPL2')
options=(!strip)
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
#install=
source=(http://hea-www.harvard.edu/saord/download/$_pkgname/linux${_arch}/$_pkgname.linux${_arch}.${pkgver}.tar.gz
  'ds9-bin.profile'
  'ds9-bin.profile.csh')
md5sums=('acdb95d6b91e2ff1b6ebbf8a1858ed8c'
         'ed7643486666a5e090e4baf6dad9fa2b'
         '0b94a6f838324e7bae03998210fb75ce')

[ "${CARCH}" = 'i686' ] && md5sums=('07ca480cd4d7629abee626136e7f3f1a')
[ "${CARCH}" = 'x86_64' ] && md5sums=('acdb95d6b91e2ff1b6ebbf8a1858ed8c')

md5sums+=('ed7643486666a5e090e4baf6dad9fa2b'
  '0b94a6f838324e7bae03998210fb75ce')


build() {
  cd $srcdir

  install -D ${srcdir}/$pkgname.profile $pkgdir/etc/profile.d/$pkgname.sh
  install -D ${srcdir}/$pkgname.profile.csh $pkgdir/etc/profile.d/$pkgname.csh
  
  mkdir -p $pkgdir/usr/local/bin
  install -Dm755 ds9 $pkgdir/usr/local/bin
}
