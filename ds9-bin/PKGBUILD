# Maintainer:  <clu>

pkgname=ds9-bin  
_pkgname=ds9
pkgver=7.1
pkgrel=1
pkgdesc="SAOImage DS9: Astronomical Data Visualization Application"
url="http://hea-www.harvard.edu/RD/ds9/"
arch=('i686' 'x86_64')
[ "${CARCH}" = 'i686' ] && _arch=''
[ "${CARCH}" = 'x86_64' ] && _arch='64'
license=('GPL2')
options=(!strip)
provides=(${_pkgname})
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
#install=
source=(http://hea-www.harvard.edu/saord/download/$_pkgname/linux${_arch}/$_pkgname.linux${_arch}.${pkgver}.tar.gz)

[ "${CARCH}" = 'i686' ] && md5sums=('efb2c045514db39191ed20a1a5c25955')
[ "${CARCH}" = 'x86_64' ] && md5sums=('97c814ee46c5609aa5eaef48933a7fb8')


build() {
  cd ${srcdir}

  mkdir -p ${pkgdir}/usr/bin
  install -Dm755 ds9 ${pkgdir}/usr/bin
}
