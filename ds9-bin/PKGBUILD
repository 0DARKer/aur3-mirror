# Maintainer:  <clu>

pkgname=ds9-bin  
_pkgname=ds9
pkgver=7.2
pkgrel=1
pkgdesc="SAOImage DS9: Astronomical Data Visualization Application"
url="http://hea-www.harvard.edu/RD/ds9/"
arch=('i686' 'x86_64')
[ "${CARCH}" = 'i686' ] && _arch=''
[ "${CARCH}" = 'x86_64' ] && _arch='64'
license=('GPL2')
options=(!strip)
provides=(${_pkgname})
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
#http://hea-www.harvard.edu/RD/ds9/download/linux64/ds9.linux64.7.2.tar.gz
source=(http://hea-www.harvard.edu/RD/${_pkgname}/download/linux${_arch}/$_pkgname.linux${_arch}.${pkgver}.tar.gz)

[ "${CARCH}" = 'i686' ] && md5sums=('70b42d7bf3bee8c8cda4eb3867f3e1bd')
[ "${CARCH}" = 'x86_64' ] && md5sums=('e641229b46f01f89289f4e4619255c79')


build() {
  cd ${srcdir}

  mkdir -p ${pkgdir}/usr/bin
  install -Dm755 ds9 ${pkgdir}/usr/bin
}
