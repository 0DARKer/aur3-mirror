# Maintainer: Brandon Mulcahy <brandon@jangler.info>
pkgname=moss
pkgver=0.1.0
pkgrel=1
pkgdesc="Mostly orthogonal sequencing server"
arch=('any')
url="https://github.com/jangler/${pkgname}"
license=('MIT')
depends=('go>=1.4.0')
source=("https://github.com/jangler/${pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('ee0342200c3ac06948d6c2bdf6b8663dfe4687cc78e4dbb6bed86784170f72db')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  go build -o ${pkgname}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 ${pkgname} "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
