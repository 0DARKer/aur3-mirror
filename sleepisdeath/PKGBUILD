# Contributor: Chris Baker <youremail@domain.com>
pkgname=sleepisdeath
pkgver=14b
pkgrel=2
pkgdesc='A storytelling game for two players'
arch=('i686' 'x86_64')
url='http://sleepisdeath.net/'
license=('custom: "commercial"')
source=(SleepIsDeath_v${pkgver}_UnixSource.tar.gz 
        sleepisdeath.desktop
        sleepisdeath.launcher)
md5sums=('f021d4a2add9ef9853eaf26c672d2c96'
         '3f702562e71b799e21e001127e9301d9'
         'f3ccd239aea74469da6e4d25513a6291')

build() {
  cd $srcdir/SleepIsDeath_v${pkgver}_UnixSource
  sed -i '24 s/read platformSelection/platformSelection="1"/' SleepIsDeath/configure || return 1
  ./runToBuild || return 1
  
  cd ..
  mkdir -p $pkgdir/opt/SleepIsDeath
  cp -R SleepIsDeath_v${pkgver}_UnixSource/* $pkgdir/opt/SleepIsDeath 
  rm $pkgdir/opt/SleepIsDeath/runToBuild
  chmod -R a+w $pkgdir/opt/SleepIsDeath
  
  install -D -m644 $srcdir/SleepIsDeath_v${pkgver}_UnixSource/SleepIsDeath/gameSource/speak.png \
    $pkgdir/usr/share/pixmaps/sleepisdeath.png
    
  install -D -m644 $srcdir/sleepisdeath.desktop \
    $pkgdir/usr/share/applications/sleepisdeath.desktop
    
  install -D -m755 $srcdir/sleepisdeath.launcher \
    $pkgdir/usr/bin/sleepisdeath
}

# vim:set ts=2 sw=2 et:
