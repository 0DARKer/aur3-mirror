# Contributor: Gerhard Brauer <gerbra@archlinux.de>
# Contributor: Richard Murri <admin@richardmurri.com>
pkgname=nxcompshad
pkgver=3.4.0_3
pkgrel=1
pkgdesc="X shadowing library"
arch=(i686 x86_64)
url="http://www.nomachine.com"
license=('GPL')
depends=(gcc-libs libxtst libxdamage libxrandr)
groups=('x2go' 'alts')
source=(http://64.34.161.181/download/${pkgver%%_*}/sources/${pkgname}-${pkgver//_/-}.tar.gz)
md5sums=('15deba68e12e13b524a723b49e7ec813')

build() {
  cd $srcdir/$pkgname
  ./configure --prefix=/usr
  make || return 1

  install -d $pkgdir/usr/lib
  cp -a libXcompshad.so* $pkgdir/usr/lib

  install -d $pkgdir/usr/include/nxcompshad
  cp -a *.h $pkgdir/usr/include/nxcompshad/
}


