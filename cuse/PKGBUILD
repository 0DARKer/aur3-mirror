# Contributor: Alexander Rødseth <rodseth@gmail.com>
pkgname=cuse
pkgver=0.5
pkgrel=9
pkgdesc="MIDI sequencer for the terminal"
arch=('i686' 'x86_64')
url="http://www.informatik.uni-mannheim.de/pi4.data/content/projects/cuse/index_en.html"
license=('GPL')
depends=('glibc' 'libcdk')
md5sums=('b847b4dc182489690cc1b3cd510c2d3c')
source=('http://www.informatik.uni-mannheim.de/pi4.data/content/projects/cuse/files/cuse-0.5-src.tar.gz')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg "Configuring..."
  ./configure --prefix=/usr

  msg "Building..."
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1

  # Copying over the .html-documentation and changing the
  # default language to English instead of German
  mkdir -p "$pkgdir/usr/share/doc/$pkgname"
  cp doc/*_en.html "$pkgdir/usr/share/doc/$pkgname/"
  cp -r doc/images "$pkgdir/usr/share/doc/$pkgname/"
  mv "$pkgdir/usr/share/doc/$pkgname/index_en.html" \
    "$pkgdir/usr/share/doc/$pkgname/index.html"
  find "$pkgdir/usr/share/doc" -name "*~" -exec rm -r {} +

  # Installing the license
  install -Dm644 COPYING \
    $pkgdir/usr/share/licenses/$pkgname/COPYING || return 1
}

# vim:set ts=2 sw=2 et:
