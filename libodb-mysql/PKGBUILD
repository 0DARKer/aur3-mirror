# Maintainer: Miguel Revilla <yo@miguelrevilla.com>
# Contributor: Miguel Revilla <yo@miguelrevilla.com>

pkgname=libodb-mysql
pkgver=2.0.1
pkgrel=1
pkgdesc="The ODB MySQL runtime library"
arch=('i686' 'x86_64')
depends=('libodb' 'libmysqlclient')
url="http://www.codesynthesis.com/products/odb/"
options=('!libtool')
license=('GPL')
source=("http://www.codesynthesis.com/download/odb/2.0/libodb-mysql-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make ECHO=echo
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make ECHO=echo DESTDIR="${pkgdir}" install
}

md5sums=('8aa37a72ea389cf48066636198d1b9d2')
