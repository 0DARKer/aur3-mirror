# Maintainer: Charles Vejnar <ce@vejnar.org>

pkgname=star-cshl
pkgver=2.3.1z1
pkgrel=1
pkgdesc="STAR aligns RNA-seq reads to a reference genome using uncompressed suffix arrays"
arch=("i686" "x86_64")
url="https://code.google.com/p/rna-star"
license=("GPL3")
source=("ftp://ftp2.cshl.edu/gingeraslab/tracks/STARrelease/Alpha/STAR_${pkgver}.tgz")
sha1sums=("3f916c6e4488caaf6b02c370eff94ed7034f6602")

build() {
    cd "$srcdir/STAR_${pkgver}"

    make
}

package() {
    cd "$srcdir/STAR_${pkgver}"

    install -Dm755 STAR "$pkgdir/usr/bin/STAR"
}
