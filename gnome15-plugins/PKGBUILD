#Maintainer: JD Steffen <jd@steffennet.org>

pkgname=gnome15-plugins
pkgver=0.7.1
pkgrel=1
pkgdesc="Gnome plugins for Gnome15"
url="http://www.gnome15.org"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gnome15')
source=('http://www.gnome15.org/downloads/Gnome15/Optional/gnome15-plugins-0.7.1.tar.gz')
md5sums=('0f1cc2f9fd45d4e22e947550f9d3a58e')

build () {

	export PYTHON=/usr/bin/python2

	cd $srcdir/$pkgname-$pkgver
	
	./configure prefix=$pkgdir/usr
	make
	make install
}
