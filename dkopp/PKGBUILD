# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=dkopp
pkgver=5.9
pkgrel=1
pkgdesc="A backup program using DVDs"
url="http://kornelix.squarespace.com/dkopp"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2' 'xdg-utils')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('40c783100692c4a9e2373b4486633ea3')

build() {
  cd $srcdir/$pkgname-$pkgver
  export PREFIX=/usr
  make CFLAGS+="-c $(pkg-config --cflags gtk+-2.0)" \
    LFLAGS+="`pkg-config --libs gtk+-2.0 gthread-2.0`"
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install 
  install -m644 $pkgdir/usr/share/applications/kornelix-dkopp.desktop \
    $pkgdir/usr/share/applications/dkopp.desktop
  rm $pkgdir/usr/share/applications/kornelix-dkopp.desktop
}
