# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=dkopp
pkgver=5.7
pkgrel=1
pkgdesc="A backup program using DVDs"
url="http://kornelix.squarespace.com/dkopp"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2' 'xdg-utils')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('c691e2908148ff32f98bd20158b5de8b')

build() {
  cd $srcdir/$pkgname-$pkgver
  export PREFIX=/usr
  make CFLAGS+="-c $(pkg-config --cflags gtk+-2.0)" \
    LFLAGS+="`pkg-config --libs gtk+-2.0 gthread-2.0`"
  sed -i 's#/local##' desktop 
  sed -i 's+^# ++' desktop
}

package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop 
  make DESTDIR=$pkgdir install 
}
