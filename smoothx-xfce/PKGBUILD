# Maintainer: Philip Babu <sasha.1594@gmail.com>
pkgname=smoothx-xfce
pkgver=0.2
pkgrel=3
pkgdesc="Complete icon set's for XFCE desktop environment"
url="https://github.com/sasha1594/smoothX-Xfce-0.2.1"
arch=('any')
license=('GPLv3')
depends=('gtk-update-icon-cache' 'gnome-icon-theme' 'librsvg')
source=("https://github.com/sasha1594/smoothX-Xfce/archive/0.2.3.zip")
optdepends=()
makedepends=()
conflicts=()
options=(!strip)
install='smoothx.install'
md5sums=('a736a1f4a88063e4a4e72072e580890d')


package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/share/icons"
  cp -r  smoothX-Xfce-0.2.3/smoothX* "${pkgdir}/usr/share/icons/"
  find "${pkgdir}/usr/share/icons" -type d -exec chmod 755 '{}' \;
  find "${pkgdir}/usr/share/icons" -type f -exec chmod 644 '{}' \;

}
