# Maintainer: Archie <xMickael@ifrance.com>

pkgname=hwreport
pkgver=0.10.0
pkgrel=1
pkgdesc="This is the collector for the Hardware4linux.info hardware database."
depends=('pciutils')
conflicts=('hardware4linux.info-collector')
arch=('i686' 'x86_64')
license=('GPL')
source=("http://hardware4linux.info/res/${pkgname}-${pkgver}.tar.bz2" \
	"hwreport")
url="http://hardware4linux.info"
md5sums=('f9a00ee633ee6e4a0d286f9482d7629d' \
	'966d3f3f6340a9f991c575bd43194e6d')

build() {
	cd ${startdir}/src/${pkgname}-${pkgver}
	make || return 1

	install -d ${startdir}/pkg/usr/share/hwreport ${startdir}/pkg/usr/bin
	install -D -m755 scan-printers ${startdir}/pkg/usr/bin/
	install -D -m755 ${startdir}/hwreport ${startdir}/pkg/usr/bin/
	install -D * ${startdir}/pkg/usr/share/hwreport/
}
