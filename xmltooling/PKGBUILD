# Maintainer: Kaiting Chen <kaitocracy@gmail.com>

pkgname='xmltooling'
pkgver='1.3.3'
_opensamlv='2.3'
pkgrel='1'
pkgdesc='High level interface library to XML processing'
arch=('i686' 'x86_64')
url='https://spaces.internet2.edu/display/OpenSAML/XMLTooling-C/'
license=('GPL')
depends=('openssl' 'curl' 'log4shib'
  'xerces-c' 'xml-security-c')

md5sums=('3074edc8a00bba1d26c02e798ea8039c')
source=("http://shibboleth.internet2.edu/downloads/opensaml/cpp/$_opensamlv/$pkgname-$pkgver.tar.gz")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  unset LDFLAGS
  ./configure --prefix=/usr \
    --disable-doxygen-doc
  make; make DESTDIR=$pkgdir install
}
