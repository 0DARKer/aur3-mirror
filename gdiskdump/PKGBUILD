# Maintainer: Dan Serban
# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=gdiskdump
pkgver=0.7.1
pkgrel=1
pkgdesc="A graphical user interface for the Unix command dd"
arch=(any)
url=https://launchpad.net/gdiskdump
license=(GPL)
depends=(python2 pygtk python-notify)
optdepends=(gksu gksudo)
makedepends=(python-distutils-extra)
source=("http://launchpad.net/${pkgname}/trunk/${pkgver}/+download/${pkgname}_${pkgver}.tar.gz")
md5sums=('8b76aae87d8629c49aaf4d736dcc5f0a')

package()
{
  sed -i 's/n.show ()/pynotify.init("icon-summary-body"); n.show ()/' gdiskdump/gdiskdump/GdiskdumpWindow.py
  cd gdiskdump
  python2 setup.py install --root="${pkgdir}" --optimize=1
  chmod 644 "${pkgdir}"/usr/share/gdiskdump/media/{drive-harddisk,gdiskdump}.svg
}
