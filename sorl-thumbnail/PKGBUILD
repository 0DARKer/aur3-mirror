# Contributor: Andrew Grigorev <andrew@ei-grad.ru>

pkgname=sorl-thumbnail
pkgver=3.2.5
pkgrel=1
pkgdesc="Thumbnails for Django"
arch=(any)
url="http://sorl-thumbnail.googlecode.com"
license=('GPL')
depends=('python2')
source=("http://sorl-thumbnail.googlecode.com/files/sorl-thumbnail-3.2.5.tar.gz")
sha1sums=('5be6f893e51f893facd1e240957398379a95a681')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py build || return 1
    python2 setup.py install --root=$pkgdir --optimize=1 || return 1
}
