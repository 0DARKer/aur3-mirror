# Contributor: Christoph Siegenthaler <csi@gmx.ch>
pkgname=impact
pkgver=0.7.1_mca
pkgrel=2
pkgdesc="impact is an open source finite element program suite (FEM)"
url="http://impact.sourceforge.net/"
depends=('j2re')
makedepends=('unzip')
source=(http://dl.sourceforge.net/sourceforge/${pkgname}/Impact-${pkgver}.zip impact)
md5sums=('0c6907bd8fa0517e37757c9361d411b0' 'd130a1c7da5d3b30bfdbd6f01fc7f9ce')

build(){
	mkdir -p $startdir/pkg/usr/share/{doc,impact,pixmaps,licenses/impact}
	mkdir -p $startdir/pkg/usr/bin
	
	cd $startdir/src/Impact	
	install -m644 License.txt $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
	install -m644 COPYING $startdir/pkg/usr/share/licenses/$pkgname/COPYING
	install -m644 *.png $startdir/pkg/usr/share/pixmaps

	cp -r * $startdir/pkg/usr/share/$pkgname	
	install -m755 $startdir/src/impact $startdir/pkg/usr/bin/
}
