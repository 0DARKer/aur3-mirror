# Contributor: NiteHogg <keith.b.elliott [at] gmail [dot] com>

pkgname=spring-zk
pkgver=1.3.2.7
pkgrel=1
pkgdesc="A futuristic, multiplatform, open-source, Zero-K is a treat on the Spring Engine."
arch=(any)
url="http://zero-k.info/"
license=('GPL')
depends=('spring')

prepare() {
  if ! test -d Zero-K
  then
    git clone --depth=1 https://github.com/ZeroK-RTS/Zero-K.git
  fi
}

build() {
  pushd Zero-K 
  zip -qr zk-v${pkgver}.sdz *
  mv zk-v${pkgver}.sdz "$srcdir"
}

package() {
  install -d "$pkgdir"/usr/share/spring/games
  install -Dm644 "$srcdir"/zk-v${pkgver}.sdz "$pkgdir"/usr/share/spring/games
}

