# Custom properties used in PKGBUILD and auto-package creation.
_filename_exp=zk-v[#.#.#.#].sdz
_force_update=n
_category='games'

pkgname=spring-zk
pkgver=1.1.11.13
pkgrel=1
pkgdesc="A futuristic, multiplatform, open-source, Zero-K is a treat on the Spring Engine."
arch=(any)
url="http://zero-k.info/"
license=('GPL')
depends=("spring")
changelog="ChangeLog"
noextract="zk-v1.1.11.13.sdz"
source=("http://packages.springrts.com/builds/zk-v1.1.11.13.sdz")
md5sums=('5a8390cde58d0199e15e03c4d2f7556d')

package() {
    mkdir -p $pkgdir/usr/share/spring/games
    install -Dm644 $srcdir/zk-v1.1.11.13.sdz $pkgdir/usr/share/spring/games
}

