# Custom properties used in PKGBUILD and auto-package creation.
_name="Zero-K"
_rooturl="http://packages.springrts.com/builds/"
_prefix=zk-v
_version=1.2.2.4
_suffix=.sdz
_force_update=n
_category='games'
_include=()

_filename="$_prefix$_version$_suffix"

pkgname=spring-zk
pkgver=$_version
pkgrel=1
pkgdesc="A futuristic, multiplatform, open-source, $_name is a treat on the Spring Engine."
arch=(any)
url="http://zero-k.info/"
license=('GPL')
depends=("spring")
changelog="ChangeLog"
noextract="$_filename"
source=("$_rooturl/$_filename")
md5sums=('0debae39e325ba31aca8a2bb995038ba')

package() {

    mkdir -p $pkgdir/usr/share/spring/mods

    install -Dm644 $srcdir/$_filename $pkgdir/usr/share/spring/mods
}

