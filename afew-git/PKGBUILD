# Maintainer: Kazuo Teramoto <kaz.rag at gmail.com>
pkgname=afew-git
pkgver=0.180.48d3ba1
pkgrel=1
epoch=1
pkgdesc="afew is an initial tagging script for notmuch mail"
arch=(any)
url="https://github.com/teythoon/afew"
license=('custom:BSD')
depends=('python' 'notmuch' 'dbacl')
optdeps=('python2')
makedepends=('git')
source=('LICENSE' 'git://github.com/teythoon/afew.git')
md5sums=('295b245540aa61538f9a3556c4be846c' 'SKIP')

pkgver() {
  cd "$srcdir/afew"

  echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

build() {
  cd "$srcdir/afew"

  # Build for python3 and python2
  python setup.py build
  python2 setup.py build
}

package() {
  cd "$srcdir/afew"

  # Install bin/afew for python3 and libs for python{2,3}
  python setup.py install --prefix="$pkgdir/usr"
  python2 setup.py install --prefix="$pkgdir/usr"

  install -D -m644 "$srcdir/LICENSE" \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
