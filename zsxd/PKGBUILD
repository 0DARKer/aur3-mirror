pkgname=zsxd
pkgver=1.0
pkgrel=1
pkgdesc="Un jeu amateur Zelda humoristique libre et gratuit inspirÃ© de Zelda en 2D."
arch=('i686' 'x86_64')
url="http://www.zelda-solarus.com/"
license=('GPL/custom')
groups=
provides=('zsxd')
depends=('lua' 'sdl' 'sdl_image' 'sdl_ttf' 'physfs' 'openal' 'libsndfile' 'libmodplug')
makedepends=('cmake' 'gcc' 'zip')
conflicts=()
replaces=()
backup=()
source=(http://www.zelda-solarus.com/downloads/zsxd/zsxd-1.0-src.tar.gz)
md5sums=('ce6fb6ea788d146786912d4813ca52d9')
 
build() {
  cd $srcdir/zsxd-1.0
  mkdir -p $pkgdir/usr/share/games/zsxd

  cmake -D CMAKE_INSTALL_PREFIX=$srcdir/zsxd-1.0 -D DATAPATH=$srcdir/zsxd-1.0/quests/zsxd .
  make || return 1
  make install

  cp $srcdir/zsxd-1.0/bin/solarus $pkgdir/usr/share/games/zsxd/solarus
  cp $srcdir/zsxd-1.0/quests/zsxd/data/data.solarus $pkgdir/usr/share/games/zsxd/data.solarus

  mkdir -p $pkgdir/usr/bin
  echo -e "#!/bin/bash\n/usr/share/games/zsxd/solarus -datapath=/usr/share/games/zsxd" > $pkgdir/usr/bin/zsxd

  chmod 755 $pkgdir/usr/bin/zsxd
}
