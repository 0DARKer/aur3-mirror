pkgname=pidentd
pkgver=3.0.19
pkgrel=2
pkgdesc="A program that implements the RFC1413 identification server"
arch=(i686 x86_64)
source=(http://ftp.debian.org/pool/main/p/pidentd/pidentd_3.0.19.ds1.orig.tar.gz
    identd
    identd.conf)
md5sums=('8a89279dbaff633fe0778b1dbb60d701' 'fe9c3f11e10314ff44eccd28a08c58b1'\
         '795fdcbfd10dd4db520f96f01614e59c')
depends=('glibc' 'openssl>=0.9.8b')
license=('custom')
backup=(etc/identd.conf)
url="http://www.lysator.liu.se/~pen/pidentd/"

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  /usr/bin/make || return 1
  /usr/bin/make prefix=${startdir}/pkg/usr install
  /bin/mkdir -p ${startdir}/pkg/etc/rc.d
  /bin/install -m644 ${startdir}/src/identd ${startdir}/pkg/etc/rc.d/
  /bin/install -m644 ${startdir}/src/identd.conf ${startdir}/pkg/etc/
  install -d $startdir/pkg/usr/share/licenses/$pkgname/
  head -14 src/main.c > $startdir/pkg/usr/share/licenses/$pkgname/LICENSE.txt
}
# vim: ts=2 sw=2 et ft=sh
