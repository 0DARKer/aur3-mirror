# Maintainer: Abrar Syed <sacabrarsyed@gmail.com> 
pkgname=cloudfoundry-cli
pkgver=6.8.0
pkgrel=1
pkgdesc="The official command line client for Cloud Foundry"
arch=('i686', 'x86_64')
url="https://github.com/cloudfoundry/cli"
license=('Apache')
depends=('glibc')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()

source=()
md5sums=()

if [ $CARCH = 'i686' ]; then
  source=("cf-linux-$CARCH.tar.gz::https://cli.run.pivotal.io/stable?release=linux32-binary&version=$pkgver&source=github-rel")
  md5sums=(fd93386914b594e8c2c9ab8cd609e53d)
else
  source=("cf-linux-$CARCH.tar.gz::https://cli.run.pivotal.io/stable?release=linux64-binary&version=$pkgver&source=github-rel")
  md5sums=(ea8c858bc86a71569bdff5054dfdd932)
fi

package() {
	mkdir -p "$pkgdir/usr/bin"
	cp $srcdir/cf "$pkgdir/usr/bin"
}
