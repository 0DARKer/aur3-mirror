# Maintainer: Brandon Invergo <brandon@invergo.net>
pkgname=zeptodb
pkgver=1.1
pkgrel=1
pkgdesc="Tiny tools for manipulating flat (non-relational) databases"
arch=('i686' 'x86_64')
url="http://zeptodb.invergo.net/"
license=('GPL3')
depends=('gdbm')
install='zeptodb.install'
source=("http://zeptodb.invergo.net/download/$pkgname-$pkgver.tar.gz")
md5sums=('50b59b5b6764a309c09cec3317ba5b5f')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
