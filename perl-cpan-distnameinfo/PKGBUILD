# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-cpan-distnameinfo'
pkgver='0.10'
pkgrel='1'
pkgdesc="Extract distribution name and version from a distribution filename"
arch=('any')
url='http://search.cpan.org/dist/CPAN-DistnameInfo'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/G/GB/GBARR/CPAN-DistnameInfo-0.10.tar.gz')
md5sums=('299cd9b778ddc3f9255415f60bdb5afb')

build() {
  DIST_DIR="${srcdir}/CPAN-DistnameInfo-0.10"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

