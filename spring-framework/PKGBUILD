# Contributor: Ondrej Kucera <ondrej.kucera@centrum.cz>
pkgname=spring-framework  
pkgver=3.0.4
pkgrel=1 
pkgdesc="An application framework for the Java platform"
url="http://www.springsource.org/"
arch=('any')
license=('Apache')
depends=('java-runtime' 'java-commons-logging')
source=("http://s3.amazonaws.com/dist.springframework.org/release/SPR/$pkgname-$pkgver.RELEASE-with-docs.zip")
md5sums=('b7b18f932b5d817856495e3cc6d48413')
build() {
  mkdir -p $pkgdir/usr/share/java/$pkgname
  cd $srcdir/$pkgname-$pkgver.RELEASE/dist
  for i in *.jar *.libd; do
    install -m644 "$i" $pkgdir/usr/share/java/$pkgname
  done
}
