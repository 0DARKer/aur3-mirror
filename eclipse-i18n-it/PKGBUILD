pkgname=eclipse-i18n-it 
pkgver=3.6.0.v20100814043401
pkgrel=2
lang=it
pkgdesc="Italian language pack for eclipse IDE"
url="http://www.eclipse.org/babel/"
depends=('eclipse>=3.6')
arch=('any')
source=("http://rm.mirror.garr.it/mirrors/eclipse/technology/babel/babel_language_packs/R0.8.0/BabelLanguagePack-birt-${lang}_${pkgver}.zip")
license=('EPL')
md5sums=('52f8af710e592721e20a9a5261217272')

package() {
	local eclipsedir=${pkgdir}/usr/share/	&& \
    install -d $eclipsedir			&& \
    cp -R ${srcdir}/eclipse $eclipsedir		|| return 1
}

