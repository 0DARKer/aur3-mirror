pkgname=eclipse-i18n-it 
pkgver=3.6.0.v20101211043401
pkgrel=1
lang=it
pkgdesc="Italian language pack for eclipse IDE"
url="http://www.eclipse.org/babel/"
depends=('eclipse')
arch=('any')
source=("http://rm.mirror.garr.it/mirrors/eclipse/technology/babel/babel_language_packs/R0.8.1/BabelLanguagePack-birt-${lang}_${pkgver}.zip")
license=('EPL')
md5sums=('094ff45fdbbd20200d470f8db01f48da')

package() {
    mkdir -p ${pkgdir}/usr/share
    cp -R ${srcdir}/eclipse ${pkgdir}/usr/share
}

