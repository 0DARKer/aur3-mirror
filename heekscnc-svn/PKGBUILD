# Maintainer: Perttu Ahola <gmail/celeron55>

pkgname=heekscnc-svn
pkgver=1122
pkgrel=1
pkgdesc="CNC Plugin for HeeksCAD"
arch=('i686' 'x86_64')
url=('http://code.google.com/p/heekscnc')
makedepends=('subversion' 'python' 'wxgtk' 'gtkglext' 'opencascade')
depends=('python' 'wxgtk' 'gtkglext' 'opencascade')
optdepends=('libarea' 'opencamlib')
provides=('heekscnc')
conflicts=('heekscnc')
license=('BSD')
source=('00-FLEXIBLEMAKE.patch' '00-KURVE_INSTALLDIR.patch' '00-HAVE_IOMANIP.patch')
md5sums=('32b4867acc5b5949959085e4be78b8e8'
         '07fda4dca74a38a3ff663ea46d974d21'
		 '31d4757052cc2759d57b1ad9180bf589')

_svntrunk=http://heekscnc.googlecode.com/svn/trunk
_svnmod=heekscnc-read-only

# The HeeksCAD headers are needed for building...
#_cadver=1245
_cad_svntrunk=http://heekscad.googlecode.com/svn/trunk
_cad_svnmod=heekscad-read-only

build() {
  cd "$srcdir"
  
  # Get HeeksCNC
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  
  # Get HeeksCAD
  if [ -d $_cad_svnmod/.svn ]; then
    (cd $_cad_svnmod && svn up)
  else
    svn co $_cad_svntrunk --config-dir ./ $_cad_svnmod
	#svn co $_cad_svntrunk --config-dir ./ -r $_cadver $_cad_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  # Copy license
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  cp COPYING "$pkgdir/usr/share/licenses/$pkgname/"

  #
  # BUILD
  #
  
  patch -p0 < ../../00-FLEXIBLEMAKE.patch || return 1
  patch -p0 < ../../00-HAVE_IOMANIP.patch || return 1
  patch -p0 < ../../00-KURVE_INSTALLDIR.patch || return 1

  cd "src"
  make OPENCASCADE_DIR=/opt/opencascade/inc HEEKSCADPATH=$srcdir/$_cad_svnmod || return 1
  make install DESTDIR=$pkgdir PREFIX=/usr || return 1

  cd "../kurve"
  make 
  make install DESTDIR=$pkgdir PREFIX=/usr || return 1
}
