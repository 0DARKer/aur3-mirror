pkgname='perl-namespace-clean'
pkgver='0.20'
pkgrel='1'
pkgdesc="Keep imports and functions out of your namespace"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-b-hooks-endofscope>=0.07' 'perl-package-stash>=0.22' 'perl-sub-identify>=0.04' 'perl-sub-name>=0.04')
makedepends=()
url='http://search.cpan.org/dist/namespace-clean'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/namespace-clean-0.20.tar.gz')
md5sums=('e73762d9cbbbcd571126ec724b46c962')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/namespace-clean-0.20"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
