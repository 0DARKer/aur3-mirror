# Maintainer: Lev Lybin <lev.lybin@gmail.com>
# Contributor: Lev Lybin <lev.lybin@gmail.com>

pkgname=screencloud
pkgver=1.0.2
pkgrel=4
_pkgrealrel=1
pkgdesc="Easy to use screenshot sharing application."
arch=('i686' 'x86_64')
[ "$CARCH" = "i686"   ] && ARCH=x86 && _srcname=${pkgname}-${pkgver}-${_pkgrealrel}-${CARCH}.pkg.tar.xz
[ "$CARCH" = "x86_64" ] && ARCH=x86_64 && _srcname=${pkgname}-${pkgver}-${_pkgrealrel}-${CARCH}.pkg.tar.xz
url=http://screencloud.net
license=('custom')
depends=('qt' 'qoauth' 'qca' 'qca-ossl' 'sdl' 'sdl_mixer' 'libmikmod' 'smpeg')
options=('strip' 'docs' 'libtool' 'emptydirs' 'zipman' 'purge' '!upx')
install=screencloud.install
source=("http://screencloud.net/files/linux/${_srcname}")
[ "$CARCH" = "i686" ] && md5sums=('ea8b3619fd24cfe0abdb240e9db9de8d' )
[ "$CARCH" = "x86_64" ] && md5sums=('069cae652a09e4e6216c3819efddcee8' )

package() {
    make install
}