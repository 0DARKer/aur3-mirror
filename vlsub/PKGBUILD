pkgname=vlsub
pkgver=0.8
pkgrel=1
pkgdesc="VLC extension that adds an option to download subtitles"
arch=('any')
url="http://addons.videolan.org/content/show.php?content=148752"
license=('GPL')
depends=('vlc')
source=(http://addons.videolan.org/CONTENT/content-files/148752-vlsub.lua)
md5sums=('bb368989f68e3d504a99840ee74c411f')


package() {
  install -vDm644 "$srcdir/148752-vlsub.lua" "$pkgdir/usr/share/vlc/lua/extensions/vlsub.lua"
}
