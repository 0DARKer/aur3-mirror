# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be> 
# Contributor: Aurelien Desbrieres <ice.cube@gmx.com>

pkgname=exo-devel
pkgver=0.5.6
pkgrel=1
pkgdesc="Application library for the Xfce desktop environment (Development Version)"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.xfce.org/projects/exo/"
groups=('xfce4-devel')
depends=('pygtk>=2.4' 'libxfce4util-devel' 'gtk2>=2.14.0' 'hicolor-icon-theme' 'perl-uri')
makedepends=('pkgconfig' 'libnotify' 'intltool' 'xfce4-dev-tools-devel' 'python2')
conflicts=('exo' 'exo-git')
options=('!libtool')
install=exo.install
source=(http://archive.xfce.org/src/xfce/exo/0.5/exo-$pkgver.tar.bz2)
md5sums=('f739b307e656b908fa0d26d568979d7e')

build() {
  export PYTHON="/usr/bin/python2"
  cd ${srcdir}/exo-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib \
    --localstatedir=/var --disable-static --enable-python
  make
}

package() {
  export PYTHON="/usr/bin/python2"
  cd ${srcdir}/exo-${pkgver}
	make DESTDIR=${pkgdir} install
}

