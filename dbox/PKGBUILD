# Maintainer: doorknob60 <doorknob60 at gmail dot com>

pkgname=dbox
pkgver=2.2
pkgrel=3
pkgdesc="An easy to use and powerful frontend for Dosbox written in Java"
arch=(i686 x86_64)
url="http://code.google.com/p/dbox/"
license=('GPL')
groups=('emulators')
depends=('java-runtime' 'dosbox')
source=('http://dbox.googlecode.com/files/dbox22.zip' 'dbox.desktop' 'http://dbox.googlecode.com/svn/DBox2/src/dbox2/img/ikon.gif')
md5sums=('b0e99fa2f02bb19140d40f106233a9cf' '588e848751e65aae9fa672167415504f' 'a6f3b3a0c30cdda5d7548f47f78441af')

build() {
install -d $pkgdir/usr/bin
install -d $pkgdir/usr/share/pixmaps
install -d $pkgdir/usr/share/java/dbox
install -d $pkgdir/usr/share/applications
install -D DBox2.jar $pkgdir/usr/share/java/dbox
install -D dbox.desktop $pkgdir/usr/share/applications/
install -T ikon.gif $pkgdir/usr/share/pixmaps/dbox.gif
cp -R ./lib $pkgdir/usr/share/java/dbox
echo "#!/bin/sh" > $pkgdir/usr/bin/dbox
echo '"$JAVA_HOME/bin/java" -jar "/usr/share/java/dbox/DBox2.jar"' >> $pkgdir/usr/bin/dbox
chmod +x $pkgdir/usr/bin/dbox
}
