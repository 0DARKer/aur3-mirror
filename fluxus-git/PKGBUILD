# Contributor: hm_b <holger@music-nerds.net>

pkgname=fluxus-git
pkgver=20101024
pkgrel=1
pkgdesc="A rapid prototyping, livecoding and playing/learning environment for 3D graphics and games."
arch=('i686' 'x86_64')
url="http://www.pawfal.org/fluxus/"
license=('GPL')
depends=('ffmpeg' 'fftw' 'freeglut' 'freetype2' 'glew' 'gstreamer0.10-base' 'jack'
         'liblo' 'libpng' 'libtiff' 'libunicap' 'ode' 'openal' 'pth' 'racket')
makedepends=('git' 'scons')
provides=('fluxus')
conflicts=('fluxus')

_gitroot="http://git.savannah.gnu.org/cgit/fluxus.git"
_gitname="fluxus"

build() {

  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  # PNGLoader fix
  sed -i "176,179d" libfluxus/src/PNGLoader.cpp

  scons install \
	Prefix=/usr \
	RacketPrefix=/usr \
	CCFLAGS="-D__STDC_CONSTANT_MACROS" \
	DESTDIR="$pkgdir/"
} 
