pkgname=geogebra5-beta
pkgver=4.9.71.0
pkgrel=1
pkgdesc="Dynamic mathematics software with interactive graphics (2D and 3D), algebra and spreadsheet"
arch=('i686' 'x86_64')
url="http://www.geogebra.org/"
license=('custom')
# Application and source code under GPL / Language files under CCPL
depends=('java-runtime' 'jogl' 'desktop-file-utils')
optdepends=('kde-thumbnailer-geogebra: generates thumbnails of GeoGebra files in KDE'
	    'gnome-thumbnailer-geogebra: generates thumbnails of GeoGebra files in GNOME')
install='geogebra5-beta.install'
noextract=(*.jar)

[[ "$CARCH" == 'i686' ]] && source=("http://download.opensuse.org/repositories/home:/heimdall78/openSUSE_Tumbleweed/i586/geogebra5-beta-4.9.71.0-1.1.i586.rpm") && md5sums=('397993ee625ad3a69cc409027df095e2')
[[ "$CARCH" == 'x86_64' ]] && source=("http://download.opensuse.org/repositories/home:/heimdall78/openSUSE_Tumbleweed/x86_64/geogebra5-beta-4.9.71.0-1.1.x86_64.rpm") && md5sums=('095376282621f59f83ef6d8c06cc3b4d')

package() {
   cp -R -d ${srcdir}/etc ${pkgdir}/
   cp -R -d ${srcdir}/usr ${pkgdir}/
}
