# Maintainer: Alfonso Saavedra "Son Link" <sonlink.dourden@gmail.com>
pkgname=megasync
pkgver=1.0.29
pkgrel=2
pkgdesc="Sync your files to your Mega account. Official app"
arch=('i686' 'x86_64')
url="http://mega.co.nz"
license=('custom:The Clarified Artistic License')
groups=()
depends=('openssl' 'c-ares' 'libgcrypt' 'crypto++' 'qt4' 'libpng' 'qtchooser')
source=("http://mega.co.nz/linux/MEGAsync/Debian_7.0/${pkgname}_${pkgver}.orig.tar.gz")
md5sums=('1bf09b6b7efd7cb2501dc3316ad96266')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure
	qmake-qt4
	lrelease MEGASync/MEGASync.pro
	make
}
package (){
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p ${pkgdir}/usr/bin/
	install -Dm755 MEGASync/megasync ${pkgdir}/usr/bin/
}
