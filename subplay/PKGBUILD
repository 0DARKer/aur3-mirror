pkgname=subplay
pkgver=2011.01.23
_githash=834ee63
pkgrel=1
pkgdesc="CLI for YouTube's subscription feature"
url="http://git.lambda.ath.cx/web.cgi?p=patrick/subplay;a=summary"
arch=('any')
license=('public domain')
depends=('python-beautifulsoup' 'mplayer' 'youtube-dl')
source=("http://lambda.ath.cx/pub/patrick/${pkgname}/downloads/${pkgname}-${pkgver}.tgz")
md5sums=('27bae0a0726b1beb999a45af41b42925')

package() {
  cd ${srcdir}/${pkgname}-${_githash}
  install -vDm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
