pkgname=aria2-pacman
pkgver=20100406
pkgrel=1
pkgdesc="Some scripts to format aria2c's output to look like pacman's."
arch=('any')
url="http://github.com/some-guy/aria2-pacman"
license=('GPL2')
depends=()
makedepends=('git')
source=()
_gitroot="git://github.com/some-guy/aria2-pacman.git"
_gitname="aria2-pacman"

# trick re-determining the build revision and, or entertain the hidden
# makepkg option --forcever, huh
if [ -z "$FORCE_VER" ]; then
	msg "Determining latest build revision..."
	FORCE_VER=$(wget -q -O- http://github.com/some-guy/aria2-pacman/commits/master            \
	               | grep '<abbr class="relatize" title='                                     \
	               | head -n1                                                                 \
	               | awk '{print $3;}'                                                        \
	               | sed -e 's/.*"//' -e "s/-//g")
fi

build() {
	cd "$srcdir"
	msg "Connecting to GIT server...."

	if [ -d $_gitname ] ; then
		cd "$_gitname" && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	cd "${srcdir}/${_gitname}"
	install -m755 -d ${pkgdir}/usr/bin
	install -m755 aria2pm ${pkgdir}/usr/bin/
	install -m755 aria2pmw ${pkgdir}/usr/bin/
}
