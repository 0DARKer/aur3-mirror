# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce4-dev-tools-devel
pkgver=4.7.4
pkgrel=1
pkgdesc="Xfce developer tools (Development Version)"
arch=(any)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('bash' 'sh')
makedepends=('pkgconfig' 'gtk-doc' 'automake' 'make' 'intltool' 'autoconf')
options=('!libtool')
conflicts=('xfce4-dev-tools-git' 'xfce4-dev-tools')
replaces=('xfce4-dev-tools-git' 'xfce4-dev-tools')
provides=("xfce4-dev-tools-devel=$pkgver")
source=(http://archive.xfce.org/src/xfce/xfce4-dev-tools/4.7/xfce4-dev-tools-$pkgver.tar.bz2)
md5sums=('fcd0fadb39b20500c873c2f5d5a6913c')

build() {
  cd ${srcdir}/xfce4-dev-tools-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib\
	 --localstatedir=/var --enable-maintainer-mode
  make
}

package() {
	cd ${srcdir}/xfce4-dev-tools-${pkgver}
	make DESTDIR=${pkgdir} install
}
