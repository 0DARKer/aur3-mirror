# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce4-dev-tools-devel
pkgver=4.8.0
pkgrel=1
pkgdesc="Xfce developer tools (Development Version)"
arch=('any')
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('gtk-doc' 'automake' 'automake' 'make' 'intltool' 'pkgconfig')
options=('!libtool')
replaces=('xfce4-dev-tools-git' 'xfce4-dev-tools')
source=(http://archive.xfce.org/src/xfce/xfce4-dev-tools/4.8/xfce4-dev-tools-${pkgver}.tar.bz2)
md5sums=('9591299c49d92d00ba47974c42a735fa')

build() {
  cd ${srcdir}/xfce4-dev-tools-${pkgver}
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var
  make
}

package() {
	cd ${srcdir}/xfce4-dev-tools-${pkgver}
	make DESTDIR=${pkgdir} install
}
