# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-quicknes-git
pkgver=20130202
pkgrel=1
pkgdesc="libretro implementation of QuickNES. (Nintendo Entertainment System)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/QuickNES_Core"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/libretro/QuickNES_Core.git"
_gitname="QuickNES_Core"

build() 
{
   cd $srcdir

   msg "Cloning QuickNES_Core from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   cd libretro
   make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro/libretro.so $pkgdir/usr/lib/libretro/libretro-quicknes.so
}

