# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-quicknes-git
_gitname=QuickNES_Core
pkgver=2013.04.12_31eba85
pkgrel=1
pkgdesc="libretro implementation of QuickNES. (Nintendo Entertainment System)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/QuickNES_Core"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')
source=('git://github.com/libretro/QuickNES_Core.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname/libretro
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro/quicknes_libretro.so $pkgdir/usr/lib/libretro/libretro-quicknes.so
}

