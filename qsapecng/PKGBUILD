pkgname=qsapecng
pkgver=2.0.0
pkgrel=1
pkgdesc="QSapecNG is a Qt-based symbolic analysis program for linear analog circuits."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/qsapecng/"
license=('GPLv3')
depends=('qt' 'qwt5' 'boost-libs')
makedepends=('boost' 'doxygen' 'cmake')
source=("http://sourceforge.net/projects/qsapecng/files/QSapecNG-${pkgver}-source.tar.gz")
md5sums=('2ccbfb57d6c62f5017d29287555cddfa')

build(){
  cd ${srcdir}
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build 
  fi

  sed -i 's/init/this->init/' ${srcdir}/QSapecNG-${pkgver}-source/src/logger/logger.h

  mkdir ${srcdir}/build
  cd ${srcdir}/build 
  cmake ${srcdir}/QSapecNG-${pkgver}-source -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make
}

package() { 
  cd ${srcdir}/build
  make DESTDIR="${pkgdir}" install
}
