# Maintainer: TDY <tdy@gmx.com>

pkgname=mmex
pkgver=0.9.7.0
pkgrel=1
pkgdesc="An easy-to-use personal finance suite (Money Manager Ex)"
arch=('i686')
url="http://www.codelathe.com/mmex/"
license=('GPL')
depends=('wxgtk>=2.8.0')
optdepends=('cups: for printing support')
source=(http://downloads.sourceforge.net/moneymanagerex/$pkgname-$pkgver-x86.deb)
md5sums=('40ad8331a1edad0a05c072cb16f878ef')

build() {
  cd "$srcdir"
  bsdtar -xf $pkgname-$pkgver-x86.deb
  bsdtar -xf data.tar.gz
}

package() {
  cp -r "$srcdir/usr" "$pkgdir"
  find "$pkgdir" -type d -exec chmod 755 '{}' \;
  find "$pkgdir" -type f -exec chmod 644 '{}' \;
  chmod 755 "$pkgdir/usr/bin/$pkgname"
}
