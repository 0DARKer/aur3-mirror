# Maintainer: codestation <codestation404@gmail.com>

pkgname=qcma-kdenotifier
_pkgname=qcma
pkgver=0.3.6
pkgrel=1
pkgdesc="Content Manager Assistant for the PS Vita (KDE notifier)"
arch=("i686" "x86_64")
url="https://github.com/codestation/qcma"
license=('GPL')
depends=('qcma' 'kdelibs')

source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/codestation/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('9a8994dab63355065577187ef51aa979')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  qmake-qt4 qcma_kdenotifier.pro PREFIX="/usr"
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}" install
}
