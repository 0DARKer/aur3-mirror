# Maintainer: Daniel Leining <daniel@the-beach.co>
# Contributor: M0Rf30

pkgname=humanity-icon-theme
pkgver=0.6
pkgrel=2
pkgdesc="Latest Humanity icons from Ubuntu...without modifications..."
arch=('any')
url="https://launchpad.net/humanity"
license=('GPL2')
conflicts=('humanity-icons')
depends=()
options=(!strip)
source=(https://launchpad.net/ubuntu/quantal/+source/humanity-icon-theme/0.6/+files/humanity-icon-theme_$pkgver.tar.gz)
md5sums=('eec9e04cda4f2d918495066b9678ba46')

build() {
	mkdir -p $pkgdir/usr/share/icons/
	cd $srcdir/${pkgname}-${pkgver}
	cp -r "Humanity-Dark" "$pkgdir/usr/share/icons"
	cp -r "Humanity" "$pkgdir/usr/share/icons"
}


