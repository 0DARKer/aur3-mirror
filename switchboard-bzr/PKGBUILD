# Maintainer: Dan Serban

pkgname=switchboard-bzr
pkgver=latest
pkgrel=1
pkgdesc="Modular desktop settings hub"
arch=(i686 x86_64)
url=https://launchpad.net/switchboard
license=(GPL)
depends=(granite-bzr libgee)
makedepends=(bzr cmake)

build()
{
  bzr branch lp:switchboard
  cd switchboard
  mkdir build
  cd build
  cmake ..
  make
  make DESTDIR="${pkgdir}" install
}

