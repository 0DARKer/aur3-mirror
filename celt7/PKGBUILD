# Contributor: Ray Rashif <schivmeister@gmail.com>

pkgname=celt7
_pkgname=celt
pkgver=0.7.1
pkgrel=1
pkgdesc='Low-latency audio communication codec'
arch=('i686' 'x86_64')
url='http://www.celt-codec.org'
license=('BSD')
depends=('celt' 'libogg')
options=('!libtool')
source=("http://downloads.xiph.org/releases/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")
md5sums=('c7f6b8346e132b1a48dae0eff77ea9f0')

build() {
  cd ${_pkgname}-${pkgver}

  ./configure --prefix=/usr

  make
  make DESTDIR=$(pwd)/install install
}

package() {
  cd ${_pkgname}-${pkgver}

  install -m755 -D install/usr/lib/libcelt0.so.0.0.0 $pkgdir/usr/lib/libcelt0.so.0.0.0
  ln -s libcelt0.so.0.0.0 $pkgdir/usr/lib/libcelt0.so.0
}

