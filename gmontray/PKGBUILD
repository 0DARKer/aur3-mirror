pkgname=gmontray
pkgver=0.3.1
pkgrel=1
pkgdesc="GTK Monitor Tray"
license=('GPL')
arch=('i686' 'x86_64')
url=http://sourceforge.net/projects/gmontray/files/
install=($pkgname.install)
depends=(gtk2)
source=(http://sunet.dl.sourceforge.net/project/gmontray/$pkgname-$pkgver.tar.gz)
md5sums=('d7aa0c54b39bd95312be27cdbf3a2ff5')

build(){
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$pkgdir install || return 1
}
