# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=bumprace
pkgver=1.5.3
pkgrel=2
pkgdesc="BumpRace is a simple arcade game"
arch=(i686 x86_64)
depends=('sdl_image' 'sdl_mixer')
makedepends=('make' 'gif2png')
source=(http://user.cs.tu-berlin.de/~karlb/$pkgname/${pkgname}-${pkgver}.tar.gz 
        bumprace.desktop)
url="http://user.cs.tu-berlin.de/~karlb/news/"
license=('GPL2')
md5sums=('a72733718ee6eed8cd1657db89bf8e0d' '7438331bafd68266ec4361bb6ce1da2e')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  gif2png data/gfx/racer_big.gif
  ./configure --prefix=/usr
  make || return 1
  make prefix=${pkgdir}/usr install
  mkdir -p ${pkgdir}/usr/share/applications
  install data/gfx/racer_big.png ${pkgdir}/usr/share/bumprace/icon.png
  install ${srcdir}/bumprace.desktop ${pkgdir}/usr/share/applications
}
