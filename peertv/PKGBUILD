# Maintainer: teraflops <cprieto.ortiz at gmail dot com>

pkgname=peertv
pkgver=0.1
pkgrel=1
pkgdesc="Command line tool for manage and play series from EZTV"
arch=('any')
url="https://gitorious.org/peertv/peertv/"
license=('GPL3')
depends=('bash')
makedepends=('git' 'peerflix' 'mpv' 'sqlite' 'wget')
optdepends=('subliminal: subtitles support')
provides=('peertv')
source=('git://gitorious.org/peertv/peertv.git')
sha256sums=('SKIP')

package() {
 cd "$srcdir/$pkgname"

  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm755 peertv "$pkgdir"/usr/bin/peertv
  install -Dm644 peertv.bash_completion "$pkgdir"/etc/bash_completion.d/peertv
}

# vim:set ts=2 sw=2 et:
