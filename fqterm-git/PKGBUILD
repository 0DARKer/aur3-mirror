# Contributor: Iru Dog<mytbk920423 at gmail.com>
pkgname=fqterm-git
pkgver=20130728.9be2428
pkgrel=1
pkgdesc="FQTerm, a modern terminal emulator, the git version."
arch=('i686' 'x86_64')
url="http://code.google.com/p/fqterm-git/"
license=('GPL2')
depends=('qt4' 'openssl')
makedepends=('git' 'cmake')
provides=('fqterm')
conflicts=('fqterm')
source=('git+http://code.google.com/p/fqterm-git')
md5sums=('SKIP')

pkgver(){
	cd "${srcdir}/${pkgname}"
	echo $(date -I|tr -d '-').$(git describe --always)
}

build() {
  mkdir "${srcdir}/build"
  cd "${srcdir}/build"

  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr -DQT_QMAKE_EXECUTABLE=qmake-qt4 ../fqterm-git
  make
}

package(){
	cd "${srcdir}/build"
  	make DESTDIR="$pkgdir/" install
}

