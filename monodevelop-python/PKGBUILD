pkgname=monodevelop-python
pkgver=2.6
pkgrel=1
pkgdesc="Python language support for monodevelop"
arch=('i686' 'x86_64')
url="http://monodevelop.com"
license=('GPL')
depends=('gtk-sharp-2' 'monodevelop>=2.2' 'mono-addins' 'python2')
makedepends=('mono')
source=(http://origin-download.mono-project.com/sources/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('9775d773cd9dd51d0337cf6f95cb29f4')

build() {
  export MONO_SHARED_DIR="$startdir/src/.wabi"
  mkdir -p "$MONO_SHARED_DIR"

  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
