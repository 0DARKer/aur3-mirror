# Contributor: Markus Gross (xsdnyd [at] gmail.com)

pkgname=spass
pkgver=3.0
pkgrel=1
pkgdesc="SPASS: An Automated Theorem Prover for First-Order Logic with Equality."
url="http://spass.mpi-sb.mpg.de/"
arch=('i686')
license=('GPL')
depends=('glibc')
makedepends=('')
provides=('spass')
source=($url/download/sources/$pkgname${pkgver//./}.tgz)
md5sums=(f046b05958cfe7888e39b86caf281510)

build() {
  cd $startdir/src/SPASS-$pkgver

  ./configure --prefix=/usr

  make || return 1
  make DESTDIR=$startdir/pkg install
}
# vim:syntax=sh
