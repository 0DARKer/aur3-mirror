# Maintainer: lepokle <devel@leo.von-klenze.de>
pkgname='firefox-gnome-keyring'
pkgver=0.6
pkgrel=2
pkgdesc="Gnome-keyring integration for Firefox"
arch=('i686' 'x86_64')
url='http://github.com/infinity0/firefox-gnome-keyring'
license=('GPL')
depends=('firefox>=9.0' 'gnome-keyring')
makedepends=('zip' 'unzip' 'xulrunner>=9.0')
provides=('firefox-gnome-keyring')
source=("${pkgname}-${pkgver}.tar.gz::https://nodeload.github.com/infinity0/firefox-gnome-keyring/tarball/0.6")
md5sums=('9364857f7a90a8ae3c237a0390705214')

_subdir="infinity0-firefox-gnome-keyring-fe001aa"

build()
{
	cd ${srcdir}/${_subdir}
	msg "Building extension..."
	make
}

package()
{
	cd ${srcdir}

	mkdir -p ${pkgdir}/usr/lib/firefox/extensions
	unzip ${srcdir}/${_subdir}/gnome-keyring_password_integration-*.xpi -d ${pkgdir}/usr/lib/firefox/extensions/{6f9d85e0-794d-11dd-ad8b-0800200c9a66}
}

