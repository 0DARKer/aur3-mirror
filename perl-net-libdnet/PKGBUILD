# Contributor: Pranay Kanwar <pranay.kanwar@gmail.com>

pkgname=perl-net-libdnet
pkgver=0.96
pkgrel=1
pkgdesc="Binding for Dug Song's libdnet"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~gomor/Net-Libdnet/"
license=('GPL' 'PerlArtistic')
depends=('perl-class-gomor' 'libdnet')
makedepends=('perl-extutils-makemaker')
options=('!emptydirs')
source=("http://www.cpan.org/authors/id/G/GO/GOMOR/Net-Libdnet-$pkgver.tar.gz")
md5sums=('e359aa9ecfe76c5f3c2e8c4005e8940a')

build() {
	cd "$srcdir/Net-Libdnet-$pkgver"

	sed -i '/^auto_install/d' Makefile.PL
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Net-Libdnet-$pkgver"

	make install DESTDIR="$pkgdir"
}
