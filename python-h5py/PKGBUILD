# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Sebastien Binet <binet@lblbox>
pkgname=python-h5py
pkgver=2.0.0
pkgrel=3
pkgdesc="General-purpose Python bindings for the HDF5 library"
url="http://h5py.googlecode.com"
arch=('i686' 'x86_64')
license=('BSD')
depends=('hdf5' 'python3-numpy')
makedepends=('cython')
conflicts=()
replaces=()
backup=()
install=
source=(http://h5py.googlecode.com/files/h5py-$pkgver.tar.gz)
md5sums=('f604ae6e4095bdf70b4c011b9c9762f5')

build() {
  cd $srcdir/h5py-${pkgver}
  python3 setup.py build || return 1
  python3 setup.py install --prefix=/usr --root=$startdir/pkg
}
