# Maintainer: Felix Rohrbach <fxrh@mx.de>
pkgname=libvlc-qt
pkgver=0.5.0
pkgrel=1
pkgdesc="A free library used to connect Qt and libvlc libraries"
arch=('i686' 'x86_64')
url="http://vlc-qt.sourceforge.net/"
license=('GPL')
groups=()
depends=('vlc')
makedepends=('cmake')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://downloads.sourceforge.net/project/vlc-qt/VLC-Qt/${pkgver}/libvlc-qt_${pkgver}_src.tar.gz")
noextract=()
md5sums=('52e9c882479b66ff6a5414a58fbb523e')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ../
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/build"

  make DESTDIR="$pkgdir/" install
}

