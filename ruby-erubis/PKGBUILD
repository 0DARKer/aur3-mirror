# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-erubis
pkgver=2.7.0
pkgrel=1
pkgdesc="Is an implementation of eRuby ."
arch=(any)
url="http://www.kuwata-lab.com/erubis/"
license=('MIT')
depends=('ruby' 'ruby-abstract')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/erubis-$pkgver.gem)
noextract=(erubis-$pkgver.gem)
md5sums=('cca3cf13ef951d1fc8c124d2fde52565')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" erubis-$pkgver.gem
  
  mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
