#Maintained by ivoarch <ivayloarch@gmail.com> 
pkgname=ttf-keptsans
pkgver=1.1
pkgrel=1
pkgdesc="KePT Sans are balkan extension of PT Sans"
arch=('any')
url="http://code.google.com/p/kept-fonts/"
license=('OFL')
depends=('fontconfig' 'xorg-font-utils') 
source=('http://kept-fonts.googlecode.com/files/keptsans-ttf-1.1.zip')
sha1sums=('f277bf789fdb88a0df00aa6696a06a024f2bc5e3')

build() {
  cd "${srcdir}"
  install -d "$pkgdir/usr/share/fonts/TTF"
  install -d "$pkgdir/usr/share/licenses/$pkgname"  
  install -m644 README.txt "$pkgdir/usr/share/keptsans/README"
  install -m644 FONTLOG.txt "$pkgdir/usr/share/keptsans/FONTLOG"
  install -m644 *.ttf "$pkgdir/usr/share/fonts/TTF/" || return 1
  install -m644 {'OFL.txt','OFL-FAQ.txt'} "$pkgdir/usr/share/licenses/$pkgname/" || return 1
}
