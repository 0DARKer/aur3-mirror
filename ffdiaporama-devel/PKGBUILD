# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-devel
_realname=ffdiaporama
pkgver=1.1.2011.1203
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama')
depends=('qt' 'ffmpeg' 'exiv2')
source=(http://download.tuxfamily.org/${_realname}/Devel/1.1.20111203/${_realname}_${pkgver}.tar.gz)
md5sums=('5e7fdca8a52f3932f1c20a45d59a7816')

build() {
  cd ${srcdir}
  qmake
  make
}

package() {
  cd ${srcdir}
  make install INSTALL_ROOT=${pkgdir}
}