# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-devel
pkgver=1.7.devel.20130909
pkgrel=1
pkgdesc="Movie creator from photos and video clips (development version)"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
provides=('ffdiaporama')
depends=('qt5-svg' 'ffmpeg' 'exiv2' 'shared-mime-info')
install=${pkgname}.install
source=(https://launchpad.net/ffdiaporama/1.7-devel/1.7-devel.20130909/+download/ffdiaporama_1.7.devel.2013.0909.tar.gz)
md5sums=('c3ce34b972e008a056cdd431c488eb58')

build() {
  qmake PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  make install INSTALL_ROOT=${pkgdir}
}