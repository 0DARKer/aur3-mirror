# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-devel
pkgver=1.6.beta7
pkgrel=1
pkgdesc="Movie creator from photos and video clips (development version)"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama')
depends=('qimageblitz' 'ffmpeg' 'exiv2' 'taglib' 'shared-mime-info')
install=${pkgname}.install
source=(https://launchpad.net/ffdiaporama/1.6-devel/1.6.beta7.20130616/+download/ffdiaporama_1.6.b7.2013.0616.tar.gz)
md5sums=('39a17267de2422c64950d479b9b15a88')

build() {
  qmake-qt4 PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  make install INSTALL_ROOT=${pkgdir}
}