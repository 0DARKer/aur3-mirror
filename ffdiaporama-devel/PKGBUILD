# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-devel
pkgver=1.6.beta5
pkgrel=2
pkgdesc="Creation of videos from images, titles, music (development version)"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama')
depends=('qimageblitz' 'ffmpeg' 'exiv2' 'taglib' 'shared-mime-info')
install=${pkgname}.install
source=(https://launchpad.net/ffdiaporama/1.6-devel/1.6.beta5.20130421/+download/ffdiaporama_1.6.b5.2013.0423.tar.gz)
md5sums=('868daeefb8d2bb8553c92bcf9c7b783e')

build() {
  qmake-qt4 PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  make install INSTALL_ROOT=${pkgdir}
}