# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-devel
pkgver=1.4_devel.2012.0620
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama')
depends=('qt' 'ffmpeg' 'exiv2' 'taglib' 'shared-mime-info')
install=${pkgname}.install
source=(http://download.tuxfamily.org/ffdiaporama/Devel/ffdiaporama_${pkgver}.tar.gz)
md5sums=('a6a2cc9baf0b15e72e5382ffce7d1757')

build() {
  qmake PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  make install INSTALL_ROOT=${pkgdir}
}