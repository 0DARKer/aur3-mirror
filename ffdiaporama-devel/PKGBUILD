# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-devel
pkgver=1.2.2012.0222
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama')
depends=('qt' 'ffmpeg' 'exiv2' 'taglib')
source=(http://download.tuxfamily.org/ffdiaporama/Devel/1.2.2012/ffdiaporama_${pkgver}.tar.gz)
md5sums=('fe5bb9832a58e3935522dbe71d1acdb5')

build() {
  cd ${srcdir}
  qmake PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  cd ${srcdir}
  make install INSTALL_ROOT=${pkgdir}
}