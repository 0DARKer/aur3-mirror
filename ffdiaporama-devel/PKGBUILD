# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama-devel
_realname=ffdiaporama
pkgver=1.1.2011.1208
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama')
depends=('qt' 'ffmpeg' 'exiv2')
source=(http://download.tuxfamily.org/${_realname}/Devel/1.1.20111208/${_realname}_${pkgver}.tar.gz)
md5sums=('3d43b1a510012c926b2a0f5d3e427019')

build() {
  cd ${srcdir}
  qmake
  make
}

package() {
  cd ${srcdir}
  make install INSTALL_ROOT=${pkgdir}
}