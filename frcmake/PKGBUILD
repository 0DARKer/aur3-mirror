pkgname=frcmake
pkgver=1.0
pkgrel=1
pkgdesc="Some CMake stuff for use with the VxWorks 6.3 GCC Toolchain"
arch=(any)
provides=('frcmake')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('GPL')
depends=('wput' 'cmake')
options=('!strip' 'libtool' '!zipman')
conflicts=('vxworks-gcc-toolchain-bin')
source=(https://www.dropbox.com/s/4tw5m4j6ugarvu4/$pkgname-$pkgver.tar.xz)
sha512sums=('beee1f9e1a0426293f770beb4e247f9fa26e5395ba4e758ef588679bfcd4cdf0f09c623ab1ad3a442a1ad26dd744f79874cc73348cb1156f1020148e4c255ad0')

package() {
  cd "$srcdir/$pkgname"
  cp -dpr --no-preserve=ownership ./usr $pkgdir/
}
