# Maintainer: Jonny Gerold <jonny@fsk141.com>

pkgname=dwm-fsk141
_pkgname=dwm
pkgver=5.8.2
pkgrel=1
pkgdesc="A dynamic window manager for X (Custom version with bstack)"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
options=(zipman)
depends=('libx11' 'terminus-font')
source=(http://dl.suckless.org/dwm/dwm-$pkgver.tar.gz \
	http://dwm.suckless.org/patches/dwm-5.8.2-bstack.diff \
	config.h)

md5sums=('f0b422bfeaa812d66c6dd15c3cc92a6b'
         'a1c3c37e349c324012ce8d6e967fd4cc'
         'c9c2c450d182bfaab121ab676a151873')

build() {
  cd $srcdir/$_pkgname-$pkgver

  cp $srcdir/config.h config.h

  patch -p1 < $srcdir/dwm-$pkgver-bstack.diff

  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11 || return 1
  make PREFIX=/usr DESTDIR=$pkgdir install || return 1

  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$_pkgname/LICENSE && \
  install -m644 -D README $pkgdir/usr/share/doc/$_pkgname/README
}
