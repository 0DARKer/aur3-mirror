# Maintainer: Pavel <otchertsov@gmail.com>

pkgname=pidgin-mrim-prpl
_pkgname=mrim-prpl
pkgver=0.1.26
pkgrel=1
pkgdesc="Pidgin plugin to connect to the Mail.ru Russian network"
arch=('i686' 'x86_64')
url="http://code.google.com/p/mrim-prpl/"
license=('GPL2')
depends=('libpurple>=2.4.1')
source=(http://mrim-prpl.googlecode.com/files/${_pkgname}-${pkgver}.tar.gz)
md5sums=('529cf10fc96d05e192c98f7869c4ef67')

build() {
  cd $srcdir/${_pkgname}
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
