# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=ruby-starscope
pkgver=1.1.2
pkgrel=1
pkgdesc="A tool like the venerable cscope, but for ruby, golang and other languages"
arch=('any')
url="https://github.com/eapache/starscope"
license=('MIT')
depends=('ruby' 'ruby-oj' 'ruby-parser' 'ruby-progressbar')
optdepends=('go')
source=(https://rubygems.org/downloads/${pkgname#*-}-${pkgver}.gem)
sha256sums=('3121b5b3afaebaff6abc128d2e495c9b4b2ac42799699e028c1f7d336f993607')
noextract=("${pkgname#*-}-${pkgver}.gem")
provides=('ruby-starscope' 'starscope')
conflicts=('starscope')

package() {
  cd "$srcdir"

  msg 'Installing...'
  gem install \
    --no-user-install \
    --ignore-dependencies \
    -i "$pkgdir$(ruby -rubygems -e'puts Gem.default_dir')" \
    ${pkgname#*-}-$pkgver.gem
}
