# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-locale-maketext-fuzzy
pkgver=0.10
pkgrel=1
pkgdesc="Maketext from already interpolated strings"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~audreyt/Locale-Maketext-Fuzzy-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/A/AU/AUDREYT/Locale-Maketext-Fuzzy-$pkgver.tar.gz")
md5sums=('ff5621abe3b6a632bdf91932b4b69513')

build() {
	cd "$srcdir/Locale-Maketext-Fuzzy-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Locale-Maketext-Fuzzy-$pkgver"
	make install DESTDIR="$pkgdir"
}
