post_install() {
    useradd -U -r -M -d /var/cache/tlsdated -s /bin/false tlsdate &>/dev/null
    mkdir var/cache/tlsdated && chown tlsdate:tlsdate var/cache/tlsdated
}

post_upgrade() {
    getent passwd tlsdate |grep -q ':/home/tlsdate:' &&
        usermod -d /var/cache/tlsdated tlsdate
}

pre_remove() {
    userdel  tlsdate &>/dev/null
    groupdel tlsdate &>/dev/null
}
