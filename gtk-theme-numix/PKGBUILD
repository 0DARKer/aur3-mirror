# Contributor: Aleessio Sergi

pkgname=gtk-theme-numix
pkgver=1.6
pkgrel=3
pkgdesc="A flat and light theme with a modern look that support Openbox, Xfce, Gnome, Unity and KDE"
arch=('any')
url="http://satya164.deviantart.com/art/Numix-GTK3-theme-360223962"
license=('GPL3')
depends=('gtk-engine-murrine')
optdepends=('qtcurve-style-numix: KDE QtCurve theme in numix style')
source=('http://fc08.deviantart.net/fs70/f/2013/165/1/4/numix___gtk3_theme_by_satya164-d5ygul6.zip')
md5sums=('23bcddc507182d2dfd384a24c833beda')

package() {
  # Install GTK Theme
  install -d "$pkgdir/usr/share/themes/Numix"
  cp -rv $srcdir/Numix/* "$pkgdir/usr/share/themes/Numix/"
}

