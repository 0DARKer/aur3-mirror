# created 06:01:41 - 08/10/09
# Maintainer: Frikilinux <frikilinux at frikilinux.com.ar>

pkgname=colorcode
pkgver=0.6.1
pkgrel=1
pkgdesc="Free MasterMind game clone"
arch=('i686' 'x86_64')
url="http://colorcode.laebisch.com/"
license=('GPL')
depends=('qt')
makedepends=()

source=(http://colorcode.laebisch.com/download/ColorCode-$pkgver.tar.gz colorcode.desktop)
md5sums=('4b65c709e77dc489d92501f78c1f4076'
         '6a0af132972ba2bcd7d19526f3052406')

build() {

	cd ${srcdir}/ColorCode

	qmake || return 1
	make || return 1
	install -Dm755 colorcode ${pkgdir}/usr/bin/colorcode || return 1
	install -Dm644 ../colorcode.desktop ${pkgdir}/usr/share/applications/colorcode.desktop || return 1
	install -Dm644 img/cc64.png ${pkgdir}/usr/share/pixmaps/cc64.png || return 1

}