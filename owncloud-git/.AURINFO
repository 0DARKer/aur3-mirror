pkgbase = owncloud-git
	pkgdesc = A cloud server to store your files centrally on a hardware controlled by you
	pkgver = 20140730
	pkgrel = 1
	url = http://owncloud.org/
	install = owncloud.install
	arch = any
	license = GPL
	makedepends = git
	makedepends = nodejs
	depends = php-gd
	depends = php-intl
	optdepends = phpmyadmin: A PHP and hence web-based tool to administrate MySQL over the WWW
	optdepends = php-curl: for using curl module for PHP
	optdepends = php-apache: if you wants to use apache
	optdepends = php-fpm: if you wants to use nginx
	optdepends = php-sqlite: if you wants to use sqlite database
	optdepends = mariadb: if you wants to use mysql database
	optdepends = libreoffice-common: file preview
	optdepends = smbclient: to mount SAMBA shares
	source = owncloud-git-core::git+https://github.com/owncloud/core
	source = owncloud-git-3rdparty::git+https://github.com/owncloud/3rdparty
	source = owncloud-git-apps::git+https://github.com/owncloud/apps
	source = owncloud-git-bookmarks::git+https://github.com/owncloud/bookmarks.git
	source = owncloud-git-calendar::git+https://github.com/owncloud/calendar.git
	source = owncloud-git-contacts::git+https://github.com/owncloud/contacts.git
	source = owncloud-git-news::git+https://github.com/owncloud/news.git
	source = owncloud-git-notes::git+https://github.com/owncloud/notes.git
	source = owncloud-git-mail::git+https://github.com/owncloud/mail.git
	source = owncloud-git-music::git+https://github.com/owncloud/music.git
	source = owncloud-git-shorty::git+https://github.com/owncloud/shorty.git
	source = owncloud-git-tasks::git+https://github.com/owncloud/tasks.git
	source = owncloud-git-maps::git+https://github.com/owncloud/maps.git
	source = owncloud-git-SMStorage::git+https://github.com/owncloud/SMStorage.git
	source = owncloud-git-documents::git+https://github.com/owncloud/documents.git
	source = apache.conf_example
	source = nginx.conf_example
	options = !strip

pkgname = owncloud-git

