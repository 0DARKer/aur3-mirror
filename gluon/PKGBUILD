#Maintainer : Ivan Sichmann Freitas <ivansichfreitas@gmail.com>

pkgname=gluon
pkgver=0.71.0
pkgrel=2
pkgdesc="A Free and Open Source platform for creating and distributing games"
arch=('i686' 'x86_64')
url="http://gluon.gamingfreedom.org/"
license=('LGPL')
depends=('kdelibs' 'libsndfile' 'openal' 'alure' 'attica')
makedepends=('cmake' 'automoc4' 'mesa' 'kdevplatform')
provides=('gluon')
conflicts=('gluon')
source=("http://gluon.gamingfreedom.org/sites/default/files/gluon-$pkgver.tar.gz")
md5sums=('97a14b55277922f12c6d48871a18f776')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cmake -DCMAKE_INSTALL_PREFIX=/usr "$srcdir/$pkgname-$pkgver"
  make
  make DESTDIR="$pkgdir/" install
}
