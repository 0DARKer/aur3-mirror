#Maintainer : Ivan Sichmann Freitas <ivansichfreitas@gmail.com>

pkgname=gluon
pkgver=0.70.0
pkgrel=3
pkgdesc="A Free and Open Source framework for creating and distributing games"
arch=('i686' 'x86_64')
url="http://gluon.gamingfreedom.org/"
license=('LGPL')
depends=('mesa' 'kdebase-runtime' 'libsndfile' 'openal')
optdepends=('libvorbis' 'mpg123')
makedepends=('cmake' 'automoc4')
provides=('gluon')
conflicts=('gluon-git')
source=("http://gluon.gamingfreedom.org/sites/default/files/$pkgname-$pkgver.tar.gz")
md5sums=('3f5b6eae22a5c4f41e574b5ef5c66a8e')

build() {
  cd "$srcdir/$pkgname-$pkgname"
  cmake -DCMAKE_INSTALL_PREFIX=/usr "$srcdir/$pkgname-$pkgname"
  make
  make DESTDIR="$pkgdir/" install
}
