post_install() {
  echo "Enabling Optimus Service"
  /etc/rc.d/xdm-optimus start
}

post_upgrade() {
  depmod -a
  ldconfig
  modprobe -r nouveau  
  modprobe nvidia
  #rm -rf /usr/lib$_bldarch2/nvidia-current/
  #rm -rf /usr/lib/nvidia-current/
  #mkdir -p /usr/libi$_bldarch2/nvidia-current/
  export VGL_READBACK=fbo
}

pre_remove () {
./bumblebee-uninstall
}
