pkgname=cpyrit-cuda-svn
pkgver=308
pkgrel=4
pkgdesc="CUDA backend for accelerated attack against WPA-PSK authentication, development version"
url="http://code.google.com/p/pyrit/"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('python2' 'pyrit-svn' 'cuda-toolkit>=4.0.17-2')
makedepends=('gcc')

_svntrunk=http://pyrit.googlecode.com/svn/trunk
_svnmod=cpyrit_cuda

build() {
  svn co ${_svntrunk}/${_svnmod}

  cd ${_svnmod}

  sed -i 's|/usr/local/cuda|/usr|g' setup.py
  sed -i "s|path, 'include'|path, 'include/cuda'|g" setup.py
  python2 setup.py build
}

package() {
  cd ${srcdir}/${_svnmod}
  python2 setup.py install --root=${pkgdir}
}
