pkgname='perl-mojolicious'
pkgver='5.04'
pkgrel='1'
pkgdesc="Real-time web framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/Mojolicious'
source=('http://search.mcpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-5.04.tar.gz')
md5sums=('8debea544d7a49c8e7abfebda9e6ae5b')
sha512sums=('c10d463ce8f303b73d2079360baa7c8ad3d214976417095876cf4b64cfceb165454a40c04dbff49fbcf14d87db455e52e2ceb7d6cf3d9313e607b48041e3dcef')
_distdir="Mojolicious-5.04"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

