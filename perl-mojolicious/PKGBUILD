# Maintainer: Christian Sturm <reezer@reezer.org>
pkgname=perl-mojolicious
pkgver=2.35
pkgrel=1
pkgdesc="next generation web framework for perl"
arch=(any)
url="http://mojolicio.us/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.12.0')
options=(!emptydirs)
install=
source=(http://cpan.metacpan.org/authors/id/S/SR/SRI/Mojolicious-$pkgver.tar.gz)
md5sums=('e12108e0d3737ebffaec1a7201ab50ee')

build() {
  cd "$srcdir/Mojolicious-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1
}

# vim:set ts=2 sw=2 et:
