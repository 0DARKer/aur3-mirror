pkgname='perl-mojolicious'
pkgver='3.95'
pkgrel='1'
pkgdesc="Real-time web framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Mojolicious'
source=('http://search.cpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-3.95.tar.gz')
md5sums=('27a4e690bf589549979f0b0dbe53333a')
sha512sums=('58f8f1f06fe357bfa23455bbe5e4d82b899efb41eac0db89bd1c5a62ec807cdb7a735135ea8ee6f12f2e6817648f41b134435799b8c673faa55e059694c0eb44')
_distdir="Mojolicious-3.95"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

