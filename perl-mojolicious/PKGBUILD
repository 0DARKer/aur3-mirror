pkgname='perl-mojolicious'
pkgver='6.10'
pkgrel='1'
pkgdesc="Real-time web framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='https://metacpan.org/release/Mojolicious'
source=('http://search.cpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-6.10.tar.gz')
md5sums=('786bb4dc5eb0a09dc7f526201538327e')
sha512sums=('a36509f68d4e0aab8c366c5a48c8e39c75ddb2a55725d46f67a049a9a527832256d0acfc2af1c97b4c1fdc808be80962d8d3727a9b1abba16d41f45c09edb7e0')
_distdir="Mojolicious-6.10"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

