pkgname='perl-mojolicious'
pkgver='6.03'
pkgrel='1'
pkgdesc="Real-time web framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/Mojolicious'
source=('http://search.mcpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-6.03.tar.gz')
md5sums=('3d3e6399da4d2649324ec23a751934d7')
sha512sums=('6285e413996953a5f8092f979fcede560297ffd69b9bc1de3d89467e8206e50974f0d565d184f8af95778f2bfb20473769483dc80f0d55e87714ba73aa7217c8')
_distdir="Mojolicious-6.03"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

