pkgname='perl-mojolicious'
pkgver='5.43'
pkgrel='1'
pkgdesc="Real-time web framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/Mojolicious'
source=('http://search.mcpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-5.43.tar.gz')
md5sums=('d7bc72452fbe7057be400c351fcab524')
sha512sums=('286c7faf39e2983438d45abc57743d0e5b32cb0b72be65825af986169f5f470be8ddd6e8e815ada2f63dbfb29e2ba1656a0a0ba02e668a3fa32c9102f70b46ec')
_distdir="Mojolicious-5.43"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

