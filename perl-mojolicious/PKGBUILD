makedepends=()
url='http://search.cpan.org/dist/Mojolicious'
source=('http://search.cpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-4.88.tar.gz')
md5sums=('f4d07e40a9e21cdb00dfcadf88e4f5f9')
