pkgname='perl-mojolicious'
pkgver='5.55'
pkgrel='1'
pkgdesc="Real-time web framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/Mojolicious'
source=('http://search.mcpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-5.55.tar.gz')
md5sums=('10ef37e9ecec81cb1fe3ffe0a6620328')
sha512sums=('1f1e42d0805b97bcb909868fa7789869f4e7130acda1c7b0fb73ee84cda88d9fffaeb55943f2e383f5a38803ef42b652325b006eeb0726947fb55b2b8936b60c')
_distdir="Mojolicious-5.55"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

