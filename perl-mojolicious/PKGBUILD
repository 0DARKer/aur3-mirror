pkgname='perl-mojolicious'
pkgver='5.30'
pkgrel='1'
pkgdesc="Real-time web framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.mcpan.org/dist/Mojolicious'
source=('http://search.mcpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-5.30.tar.gz')
md5sums=('2a32360ac2f3761b8c3f246e7ed99294')
sha512sums=('5d013f6e6cc01e8806988bdc761590d1a1b85c5413968ff0c16159bc7e02b10f722524f0e78bafd73296c188b782d5f8a4432ade6d492d0dbefdd96383f13dd0')
_distdir="Mojolicious-5.30"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

