# Maintainer: allspark <allspark at cyb0rg dot org>

pkgname=hashlibpp
pkgver=0.3.2
pkgrel=1
pkgdesc="Hashing library"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/hashlib2plus/"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://downloads.sourceforge.net/project/hashlib2plus/$pkgver/hashlibpp_0_3_2.zip Makefile.patch)
noextract=()
md5sums=('e42abe523d723b1a1726663d64ff304f' '1d62e5ea8125d8a9ff054114956e2851')

build() {
  cd $srcdir/hashlibpp_0_3_2/src
   patch -p0 -i ../../../Makefile.patch || return 1

  make -j1 || return 1

  mkdir -p "$pkgdir"/usr/lib
  mkdir -p "$pkgdir"/usr/include

  make DESTDIR=$pkgdir install || return 1
}
