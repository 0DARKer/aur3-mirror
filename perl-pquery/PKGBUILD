pkgname=perl-pquery
pkgver=0.07
pkgrel=1
pkgdesc="Perl/CPAN module pQuery. A Perl port of jQuery.js"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~INGY/pQuery"
license=('GPL' 'PerlArtistic')
depends=('perl-html-tree' 'perl>=5.10.0')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/I/IN/INGY/pQuery-$pkgver.tar.gz) 
md5sums=('c8776122dd4209efcc8835813a09ae75')

build() {
  cd  $startdir/src/pQuery-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
