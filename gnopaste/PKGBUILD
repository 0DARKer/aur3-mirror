pkgname=gnopaste
pkgver=0.5.5
pkgrel=1
pkgdesc="gnopaste is a free nopaste script based on PHP with MySQL."
license=('GPL')
arch=("i686" "x86_64")
url="http://gnopaste.sourceforge.net/"
depends=('php' 'mysql')
backup=(usr/share/webapps/gnopaste/config.php)
source=(http://puzzle.dl.sourceforge.net/sourceforge/gnopaste/gnopaste-0.5.5.tgz)
md5sums=(d213b9f48bb545f22685b93838d550ab)

build() {
  instdir=$pkgdir/usr/share/webapps/gnopaste
  mkdir -p $instdir
  cd $instdir
  cp -ra $srcdir/gnopaste-$pkgver/* .
}
