pkgname=asmaa
pkgver=2.1.1
pkgrel=1
pkgdesc=' Linux alternative of the Islamic Arabic Shamela library. '
url='http://sourceforge.net/projects/asmaalibrary/files/'
arch=('any')
license=('Waqf GPL')
depends=('python2' 'python-gobject' 'gtk3' 'webkitgtk' 'mdbtools')
makedepends=('patch')
source=("http://downloads.sourceforge.net/sourceforge/asmaalibrary/${pkgname}-${pkgver}.${pkgrel}.tar.gz" 'fix_import_shamela_books.patch')
md5sums=('378e05041f9cdda6cde856991c9779f3' '70c99d5519e9f04e3497c2c8d5d1f25d')

build(){
  cd ${srcdir}/${pkgname}-${pkgver}.${pkgrel}
  patch -Np0 -i ${srcdir}/fix_import_shamela_books.patch
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}.${pkgrel}
  python2 setup.py install --root=${pkgdir}/
}
