pkgname=go4
pkgver=4.5.1
pkgrel=1
pkgdesc='Object-oriented system Go4 (GSI Object Oriented On-line Off-line system) based on ROOT'
arch=('i686' 'x86_64')
depends=('root' 'qt')
url="http://www-win.gsi.de/go4/"
license=('GPLv2')
source=("http://www-linux.gsi.de/~go4/download/${pkgname}-${pkgver}.tar.gz")
md5sums=('996722e7e07139e74ac1bf52d5cf2fca')

build() {
  	cd ${pkgname}-${pkgver}
	make prefix=/usr/local withqt=4
}

package() {
	  cd ${pkgname}-${pkgver}
	  make install
	  cd ..
	  install -Dm644 "${pkgname}-${pkgver}/Go4License.txt" "$pkgdir/usr/share/licenses/${pkgname}/Go4License.txt"
}