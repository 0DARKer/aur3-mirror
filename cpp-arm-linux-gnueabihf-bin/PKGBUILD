pkgname=cpp-arm-linux-gnueabihf-bin
pkgver=4.7.2
pkgrel=2
pkgdesc="The GNU C preprocessor (cpp) for armhf architecture"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/cpp-arm-linux-gnueabihf"
license=('GPL2')
depends=('cloog-ppl' 'libmpc09')
provides=('cpp-arm-linux-gnueabihf')
conflicts=('cpp-arm-linux-gnueabihf')
if [ "$CARCH" = "i686" ]; then
	source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-4.7-armhf-cross/cpp-4.7-arm-linux-gnueabihf_4.7.2-21ubuntu3cross1.80_i386.deb")
	md5sums=('eb519ddecffbd3870bdc6b9a87857546')
elif [ "$CARCH" = "x86_64" ]; then
	source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-4.7-armhf-cross/cpp-4.7-arm-linux-gnueabihf_4.7.2-21ubuntu3cross1.80_amd64.deb")
	md5sums=('00ea881a3f39f4058f4a666b40b898b9')
fi

package() {
	cd $pkgdir
	tar xf $srcdir/data.tar.gz
}
