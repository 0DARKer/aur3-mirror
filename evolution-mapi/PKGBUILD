pkgname=evolution-mapi
pkgver=3.12.7
_gnomever=3.12
pkgrel=1
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
depends=('evolution>=3.12.7-1' 'openchange>=2.1-2' 'intltool>=0.50.2-2')
source=(.AURINFO http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=('e7328aa8c57111ac12a072c6804226374b3bfe1dceeed457a4fd440bc9c9f456'
            '81909579e836b47925da9bc5de4426047d584fe9dcec49e1a9acb0de4bfb210c')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
