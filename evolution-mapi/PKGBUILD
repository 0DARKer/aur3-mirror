# Contributor: Marco A Rojas <marquicus@gmail.com>
pkgname=evolution-mapi
pkgver=3.12.5
_gnomever=3.12
pkgrel=1
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
depends=('evolution>=3.12.2-1' 'openchange>=2.1-2' 'intltool>=0.50.2-2')
source=(.AURINFO http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=(SKIP '9c38917cfe769e7848f84ce890643cf4d6dfb08491cf66282548a046ab060a31')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
