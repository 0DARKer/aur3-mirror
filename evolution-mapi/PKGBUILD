# Contributor: Marco A Rojas <marquicus@gmail.com>
pkgname=evolution-mapi
pkgver=3.8.2
_gnomever=3.8
pkgrel=1
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
    depends=('evolution>=3.8.2' 'openchange>=2.0-1')
source=(http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=('e2b979ca7cdf7dda6187b5161023112ffdb23d25832dcdeb0a83bfbfd044813e')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
