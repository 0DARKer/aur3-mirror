pkgname=evolution-mapi
pkgver=3.12.2
_gnomever=3.12
pkgrel=2
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
	    depends=('evolution>=3.12.2-1' 'openchange=2.1-1' 'intltool>=0.50.2-1')
source=(http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f6b79a3be58bbbc01ecd781ded9626232a002edaa7a6fdf0850acfb6383bcf25')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
