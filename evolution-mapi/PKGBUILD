# Contributor: Marco A Rojas <marquicus@gmail.com>
pkgname=evolution-mapi
pkgver=3.12.1
_gnomever=3.12
pkgrel=1
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
    depends=('evolution>=3.12.1-1' 'openchange>=2.0-3' 'intltool>=0.50.2-1')
source=(http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=('764530f39fcb2f4851ddd79327a1341d1f2461a005442b1e4345ef88cbc82805')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
