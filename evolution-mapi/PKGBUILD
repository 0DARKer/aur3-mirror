# Contributor: Marco A Rojas <marquicus@gmail.com>
pkgname=evolution-mapi
pkgver=3.8.4
_gnomever=3.8
pkgrel=1
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
    depends=('evolution>=3.8.4' 'openchange>=2.0-2' 'intltool>=0.50.2-1')
source=(http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=('b801430384dfd42bab98405a3e03fb6d8ec50fb68b21d5553de5ad86a3fc47d6')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
