pkgname=evolution-mapi
pkgver=3.12.8
_gnomever=3.12
pkgrel=1
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
depends=('evolution>=3.12.8-1' 'openchange' 'intltool>=0.50.2-2')
source=(http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=('b0752cc54c5047fd7f5df2c9ae9e67e0edc5d51542ddd8d15c7b6d66e849ccdc')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
