# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=autolatex  
pkgver=28.0
pkgrel=1
pkgdesc="Automate generation of large scale LaTeX projects."
url="http://www.arakhne.org/autolatex/"
arch=('any')
license=('GPL')
depends=('perl' 'python' 'dconf')
backup=("etc/$pkgname/config" )
install=$pkgname.install
source=(http://mirror.ctan.org/support/$pkgname.zip)
md5sums=('9dd95b33c1d4a2142d9baac7b511319c')
options=('!emptydirs')

prepare() {
  cd $srcdir/$pkgname
  sed -i '14s+^+#+' Makefile.PL
}

build() {
  cd $srcdir/$pkgname
  perl Makefile.PL
  make
}

package() {
  cd $srcdir/$pkgname
  install -d $pkgdir/usr
  perl Makefile.PL --prefix=$pkgdir/usr install
}
