# Maintainer: Thomas Haider <t.haider@deprecate.de>

pkgname=ttf-comic-neue
pkgver=1.1
pkgrel=2
pkgdesc="Comic Neue aspires to be the casual script choice for everyone including the typographically savvy."
arch=('any')
license=('custom:CCPD')
url="http://comicneue.com"
depends=('fontconfig')
install=ttf-comic-neue.install
source=("http://comicneue.com/comic-neue-${pkgver}.zip" ttf-comic-neue.install)
sha256sums=('f9442fc42252db62ea788bd0247ae0e74571678d1dbd3e3edc229389050d6923'
            '5c8e95208623b230b301e45ed569ee47c8f56f987ee4faced919c7553a62db49')

package() {
  install -D -m644 comic-neue-${pkgver}/license.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -d "${pkgdir}/usr/share/fonts/TTF"
  install -m644 comic-neue-${pkgver}/*.ttf "${pkgdir}/usr/share/fonts/TTF/"
}
