#Maintainer: onny <onny@project-insanity.org>

pkgname=openecardapp
pkgver=1.0.1
pkgrel=1
pkgdesc="Open eCard-App (opencard) is an open source alternative of the AusweisApp"
arch=('i686' 'x86_64')
url="https://www.openecard.org"
license=("GPL3")
depends=('java-runtime')
source=("https://www.openecard.org/download/OpeneCardApp-1.0.1.jar")
sha512sums=('f2bf3e00f78495e85b97aadc9f1c98de0a126e88c986487ec19880a0476d4478255f50700a8caf303f1b0510b0dbd9d7359c5be2add8a4f23cd6419ea2069fe5')
package() {
  mkdir -p "${pkgdir}/opt/${pkgname}" "${pkgdir}/usr/bin"
  cp ${srcdir}/OpeneCardApp.jar "${pkgdir}/opt/${pkgname}/"
  echo -e "#!/bin/bash\njava -jar /opt/${pkgname}/OpeneCardApp.jar \$@" > $pkgdir/usr/bin/openecardapp
  chmod a+x "${pkgdir}/usr/bin/openecardapp"
}
