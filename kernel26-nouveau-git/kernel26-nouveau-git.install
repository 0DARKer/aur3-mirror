post_install () {
	echo ">"
	echo "> Generating initramfs, using mkinitcpio.  Please wait..."
	echo ">"
	/sbin/mkinitcpio -p kernel26-nouveau-git | sed -u 's/^/> /'

	echo ">"
	echo "> Updating module dependencies. Please wait ..."
	depmod $(file -b /boot/vmlinuz26-nouveau-git | sed -r 's/.*version ([^[:space:],]+).*/\1/')
}

post_upgrade() {
	post_install
}
