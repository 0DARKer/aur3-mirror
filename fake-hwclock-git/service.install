post_install() {
	if [ -d /etc/systemd/system ] ; then
		mv fake-hwclock.service /etc/systemd/system/fake-hwclock.service
		systemctl enable fake-hwclock.service
	fi
}

post_remove() {
	if [ -e /etc/systemd/system/fake-hwclock.service ] ; then
		systemctl disable fake-hwclock.service
		rm /etc/systemd/system/fake-hwclock.service
	fi
}
