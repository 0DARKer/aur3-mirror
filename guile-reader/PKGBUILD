# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=guile-reader
pkgver=0.5
pkgrel=1 
pkgdesc="A document production system, uses GNU Guile 1.8 as the underlying Scheme implementation."
url="http://www.nongnu.org/$pkgname"
arch=('i686' 'x86_64')
license=('GPL')
depends=('guile')
makedepends=('gperf')
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('c4dfbc636327fa7f32ad1b07eb4af290')
install=guile-reader.install
build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  rm $pkgdir/usr/share/info/dir
}