# Contributor: Igor Galic <i.galic@gmail.com>
# Contributor: Stefan Husmann <stefan-husmann@t-systems.de>
pkgname=zgv
pkgver=5.9
pkgrel=3
arch=('i686' 'x86_64')
pkgdesc="zgv is a picture viewer with a thumbnail-based file selector, for the console - that uses SDL"
url="http://www.svgalib.org/rus/zgv/"
license=('GPL')
install=zgv.install
depends=('sdl' 'libpng' 'libtiff')
source=(http://www.svgalib.org/rus/zgv/$pkgname-$pkgver.tar.gz arch.patch)
md5sums=('d65a434ddeb612f0c488177f873afad2' '1b5d28576e81558120c0dd0529ecab69')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 <../arch.patch
  install -d $startdir/pkg/usr/bin
  install -d $startdir/pkg/usr/share/man/man1
  install -d $startdir/pkg/usr/share/info
  make  || return 1
  make PREFIX=$startdir/pkg/usr \
     MANDIR=$startdir/pkg/usr/share/man/man1 \
     INFODIR=$startdir/pkg/usr/share/info install || return 1
}
