# Contributor: Antti Oja <antti.bofh@gmail.com>

pkgname=spring-git
pkgver=20100205
pkgrel=1
pkgdesc="A free 3D real-time-strategy (RTS) game engine. Development branch."
arch=('i686' 'x86_64')
url="http://springrts.com/"
license=('GPL2')
provides=('spring' 'spring-git')
depends=('openal' 'glew' 'boost' 'devil' 'libvorbis' 'freetype2' 'sdl')
makedepends=('git' 'cmake' 'p7zip')
conflicts=('spring' 'spring-svn')
source=()
md5sums=()

_gitroot="git://github.com/spring/spring.git"
_gitname="spring"

build() {
  cd ${srcdir}
  msg "Connecting to github.com GIT server...."

  if [ -d ${srcdir}/$_gitname ] ; then
  cd $_gitname && git pull origin
  msg "The local files are updated."
  else
  git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"

  msg "Creating build directory"
  if [ -d "${srcdir}/$_gitname-build" ]; then rm -rf "${srcdir}/$_gitname-build"; fi
  cp -R "${srcdir}/$_gitname" "${srcdir}/$_gitname-build"

  msg "Starting make..."
  cd "${srcdir}/$_gitname-build"
  cmake -DCMAKE_INSTALL_PREFIX=/usr . ||Â return 1

    cmake \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DUSE_GML=true \
        -DUSE_GML_SIM=true \
#	-DUSE_GML_DEBUG=true \
        -DDATADIR=share/spring .

    make || return 1
    make DESTDIR=$pkgdir install || return 1

    install -d $pkgdir/etc/spring
    echo '$HOME/.spring' > $pkgdir/etc/spring/datadir
}
