# Contributor: kevku <kevku@msn.com>
# Contributor: zhuqin <zhuqin83@gmail.com>
pkgname=gmlive-svn
_realname=gmlive
pkgver=338
pkgrel=1
pkgdesc="A live video for linux, powered by mms, sopcast and nslive."
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtkmm' 'mplayer')
makedepends=('subversion')
if [[ "$CARCH" == 'i686' ]]; then
optdepends=('sopcast: sopcast support' 'gmlive-extra: pplive & ppstream support')
else
optdepends=('bin32-sopcast: sopcast support' 'bin32-gmlive-extra: pplive & ppstream support')
fi
install=nslive.install
url="http://code.google.com/p/gmlive/"
source=("http://dl.dropbox.com/u/10871809/nslive-0.1.0.tar.gz")
provides=('gmlive')
md5sums=('ac3fb3f56cb8db58649e9ca49672e7d8')

_svntrunk=http://$_realname.googlecode.com/svn/trunk/
_svnmod=gmlive

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #uncomment "--enable-plugin" if you need totem plugin support.
  ./autogen.sh --prefix=/usr #--enable-plugin
  make
}
package(){
  cd "$srcdir/$_svnmod-build"
  make DESTDIR="$pkgdir" install
  cd "$srcdir"
  tar xf "nslive-0.1.0.tar.gz"
  cd "$srcdir/nslive"
  install -D -m755 nslive nsweb $pkgdir/usr/bin/
}
