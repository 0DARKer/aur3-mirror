pkgname=pylotro
pkgver=0.1.15
_pkgname=PyLotRO-$pkgver.zip
pkgrel=2
pkgdesc="LOTRO/DDO Launcher (needed to login to Turbine Inc. servers)"
arch=('any')
url="http://www.lotrolinux.com/"
license=('GPL3')
depends=('openal' 'python2-pyqt')
optdepends=('lib32-openal: audio lib for multilib/wine on x86_64')
source=("https://dl.dropbox.com/s/skbofnhzy5tcenc/PyLotRO-0.1.15.zip")
md5sums=('0020630b0be1ae8cee075e994c4feb8d')

build() {
  /bin/true
}

package() {
  cd $srcdir/PyLotRO

  # Install files
  python2 setup.py install --root=$pkgdir
}
