pkgname=pylotro
pkgver=0.1.14
_pkgname=PyLotRO-$pkgver.tar.bz2
pkgrel=2
pkgdesc="LOTRO/DDO Launcher (needed to login to Turbine Inc. servers)"
arch=('any')
url="http://www.lotrolinux.com/"
license=('GPL3')
depends=('openal' 'python2-qt')
optdepends=('lib32-openal: audio lib for multilib/wine on x86_64')
source=("http://www.lotrolinux.com/$_pkgname")
md5sums=('c2c640bd6770910d6d69bcadc951c19c')

build() {
  /bin/true
}

package() {
  cd $srcdir/

  # Install files
  python2 setup.py install --root=$pkgdir
}
