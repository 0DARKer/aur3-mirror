pkgname=quakelive
pkgver=0.1.0.401
pkgrel=1
pkgdesc="A plugin allowing you to play Quake Live within any browser compatible with Netscape plugins"
arch=('i686')
url="http://quakelive.com/"
license=('custom')
depends=('libxxf86vm'
         'libxxf86dga'
         'alsa-lib'
         'zlib'
         'gcc-libs')
optdepends=()
source=(npquakelive.i386.so::http://cdn.quakelive.com/assets/2010111604/QuakeLivePlugin_401.xpi?v=0,1,0,401)
md5sums=('31dfa4b8222467feb9f6eb1d0b999ebf')

build() {
  cd .
}

package() {
  mkdir -p "$pkgdir"/usr/lib/mozilla/plugins
  cp "$srcdir"/plugins/npquakelive.i386.so "$pkgdir"/usr/lib/mozilla/plugins/npquakelive.i386.so
  mkdir -p "$pkgdir"/usr/share/licenses/quakelive/
  cp "$startdir"/licence "$pkgdir"/usr/share/licenses/quakelive/LICENCE
}
