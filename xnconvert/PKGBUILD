# Maintainer:  Houlala <houlala 'at' gmail 'dot' com>

pkgname=xnconvert
pkgver=1.10
pkgrel=1
pkgdesc='XnConvert is a cross-platform batch image-converter and resizer with a powerful and ease of use experience.'
url='http://www.xnconvert.com/'

arch=('x86_64' 'i686')
license=('custom')
depends=('glib2' 'expat')

source=('http://download.xnview.com/XnConvert-linux.tgz'
		'XnConvert.desktop')

md5sums=('d31f78993777494a806ec3d247e6696b'
		 '547d3c604284575254fdb300c9974f73')

[ "$CARCH" = 'x86_64' ] && source[0]='http://download.xnview.com/XnConvert-linux-x64.tgz' \
						&& md5sums[0]='47da22d2839b63a3adec614745c93750'

 
build() {
	cp XnConvert.desktop ${srcdir}/XnConvert

	install -d -m755 ${pkgdir}/opt/${pkgname}
	install -d ${pkgdir}/usr/bin
	install -d ${pkgdir}/usr/share/applications

	cp -R ${srcdir}/XnConvert/* ${pkgdir}/opt/${pkgname}

	ln -s /opt/${pkgname}/xnview.sh ${pkgdir}/usr/bin/${pkgname}
	ln -s /opt/${pkgname}/XnView.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
}

