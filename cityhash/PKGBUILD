# Maintainer: Alexey Syrnikov <san@3d-spline.ru>
pkgname=cityhash
pkgver=1.0.2
pkgrel=1
pkgdesc="Cityhash hash functions from Google"
arch=('x86_64')
url="https://code.google.com/p/cityhash/"
license=('MIT')
#groups=()
depends=('glibc')
makedepends=()
#optdepends=()
#provides=()
#conflicts=()
#replaces=()
#backup=()
#options=()
#install=
#changelog=
source=(http://cityhash.googlecode.com/files/$pkgname-$pkgver.tar.gz)
#noextract=()
md5sums=('a8241128fdaeeff0e452a3313281deb2')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
