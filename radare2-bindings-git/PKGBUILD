# See http://wiki.archlinux.org/index.php/VCS_PKGBUILD_Guidelines
# for more information on packaging from GIT sources.

# Maintainer: Your Name <youremail@domain.com>
pkgname=radare2-bindings-git
pkgver=20131228.259.001bfff
pkgrel=1
pkgdesc="Language bindings for radare2 (git version)"
arch=('i686' 'x86_64')
url="https://radare.org"
license=('LGPL')
depends=('radare2-git' 'valabind-git')
makedepends=('git' 'radare2-git')
provides=('r2-bindings')
conflicts=('r2-bindings')

_gitroot=https://github.com/radare/radare2-bindings.git
_gitname=radare2-bindings

pkgver () {
  cd "${srcdir}/${_gitname}"
  _date=`date +"%Y%m%d"`
  echo "$_date.$(git rev-list --count master).$(git rev-parse --short master)"
}


build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [[ -d "${_gitname}" ]]; then
    cd "${_gitname}" && git pull origin
    msg "The local files are updated."
  else
    git clone "${_gitroot}" "${_gitname}"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "$srcdir/$_gitname-build"

  ./configure --prefix=/usr --enable=python
  cd python
  make

  cd ../libr/lang/p
  make
}

package() {
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}/" install-vapi
  make DESTDIR="${pkgdir}/" install-python
  make DESTDIR="${pkgdir}/" install-plugins

  rm -rf "${srcdir}/${_gitname}-build"
}

# vim:set ts=2 sw=2 et:
