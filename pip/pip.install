post_install() {
  #In first install, installing simplejson
  pip install simplejson
  echo "simplejson for pip installed!"
}

post_upgrade() {
  #In update, upgrade simplejson
  pip install --upgrade simplejson
  echo "simplejson for pip updated!"
}

post_remove() {
  #In remove, removing simplejson
  pip uninstall simplejson
  echo "simplejson for pip removed!"
}

