# Maintainer: Prurigro
# Contributor: Prurigro

_pkgname=gnome-catgen
pkgname=${_pkgname}-git
pkgver=20140429.r19.0a93622
pkgrel=1
pkgdesc="A Gnome 3.12 application-overview folder configuration tool"
url="https://github.com/prurigro/${_pkgname}"
license=('MIT')
arch=('any')
depends=('glib2' 'dconf')
source=("${_pkgname}.1.gz"
        "git://github.com/prurigro/${_pkgname}.git#branch=master")
sha512sums=('b6c9f9981977f42e692b55b9267831833dc87f486ead50a45369c77977936b373ceaed1f31861b07c8f8bd66aa99a7557217a817c2ce0be98c50eaff9a3929b8'
            'SKIP')

pkgver() {
    cd $_pkgname
    printf "%s.r%s.%s" "$(git show -s --format=%ci master | sed 's/\ .*//g;s/-//g')" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    install -Dm644 ${_pkgname}.1.gz "${pkgdir}"/usr/share/man/man1/${_pkgname}.1.gz
    cd $_pkgname
    install -Dm755 $_pkgname "${pkgdir}"/usr/bin/${_pkgname}
    install -Dm644 LICENSE "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
