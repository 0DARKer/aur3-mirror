# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Contributor: Sergey Mastykov <smastykov[at]gmail[dot]com>

pkgname=python-grab
pkgver=0.5.1
pkgrel=1 
pkgdesc="Grab - Site Scraping Framework"
arch=('any')
url="http://github.com/lorien/grab"
license=('BSD')
depends=('python' 'python-pycurl' 'python-lxml' 'python-cssselect')
source=(https://pypi.python.org/packages/source/g/grab/grab-${pkgver}.tar.gz)
sha256sums=('162440c47b16debafaaf80b1d4d1db18caaac387ad3e850832a924e2147eabac')

build() {
  cd "$srcdir/grab-$pkgver"
  python setup.py build
}

package() {
  cd "$srcdir/grab-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

# vim:set ts=2 sw=2 et:
