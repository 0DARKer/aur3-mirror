pkgname=cgal
pkgver=3.7
pkgrel=1
_pkgid=27641
pkgdesc="Computational Geometry Algorithms Library"
arch=('i686' 'x86_64')
url="http://www.cgal.org"
source=(http://gforge.inria.fr/frs/download.php/$_pkgid/CGAL-$pkgver.tar.gz)
depends=('mpfr' 'boost' 'gmp')
makedepends=('cmake')
license=('GPL' 'QPL')
md5sums=('0e4c17f436ec04848abc3273bb6ab3ee')

build() {
  cd $startdir/src/CGAL-$pkgver
  cmake . -DCMBAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
  make install DESTDIR=$startdir/pkg

  # cd $startdir/src/CGAL-$pkgver/demo/CGAL_ipelets
  # cmake . -DWITH_IPE_7=ON
  # make
  # How to install?
}
