pkgname=cgal
pkgver=3.9
pkgrel=2
_pkgid=29125
pkgdesc="Computational Geometry Algorithms Library"
arch=('i686' 'x86_64')
url="http://www.cgal.org"
source=(http://gforge.inria.fr/frs/download.php/$_pkgid/CGAL-$pkgver.tar.xz)
depends=('mpfr' 'boost' 'gmp')
makedepends=('cmake' 'xz')
license=('GPL' 'QPL')
md5sums=('797697130ff9231627521c0a38f16d2f')

build() {
  cd $startdir/src/CGAL-$pkgver
  cmake . -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
  make install DESTDIR=$startdir/pkg

  # cd $startdir/src/CGAL-$pkgver/demo/CGAL_ipelets
  # cmake . -DWITH_IPE_7=ON
  # make
  # How to install?
}
