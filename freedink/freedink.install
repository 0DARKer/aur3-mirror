post_upgrade() {
	echo ":: DMOD data is now located in '/usr/share/freedink/dmod/'"

	[ -d /usr/share/dink ] || return 0

	echo -ne "\nMoving any existing DMODs to their new location... "
	mv -f /usr/share/dink/* /usr/share/freedink/dmod/
	
	[ $? -eq 0 ] && {
		rm -rf /usr/share/dink/
		echo " done."		
	} || echo " FAILED!"
}
