# Maintainer: b4283 <damispirit at gmail dot com>
pkgname=kawa
pkgver=1.11
pkgrel=1
pkgdesc="A scheme implementation and framework targeted the JVM."
arch=(i686 x86_64)
url="http://www.gnu.org/software/kawa/index.html"
license=('X11/MIT')
groups=()
depends=("java-runtime")
makedepends=()
conflicts=("kawa-svn")
source=(http://ftp.gnu.org/pub/gnu/kawa/$pkgname-$pkgver.tar.gz)
md5sums=('641c543a9a0fd60f7132db139c7703e3')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make -j1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make -j1 DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
