pkgname=taktuk
pkgver=3.7.4
pkgrel=0
pkgdesc="a tool for large scale remote execution deployment"
arch=('i686' 'x86_64')
url="http://taktuk.gforge.inria.fr/"
license=('GPL')
depends=('perl' 'openssh')
source=(https://gforge.inria.fr/frs/download.php/30903/$pkgname-$pkgvers.tar.gz)
md5sums=('537a9e64e30436ca569699bcd5f31a91')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr
	#sed -i "s:-O2 -Wall:${CFLAGS}:g" Makefile.defs || return 1
	make || return 1
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}
