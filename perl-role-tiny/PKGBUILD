arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=('perl-test-fatal>=0.003')
url='http://search.cpan.org/dist/Role-Tiny'
source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSTROUT/Role-Tiny-1.001002.tar.gz')
