options=('!emptydirs')
depends=('perl>=5.006')
makedepends=()
checkdepends=('perl-test-fatal>=0.003')
url='http://search.mcpan.org/dist/Role-Tiny'
source=('http://search.cpan.org/CPAN/authors/id/H/HA/HAARG/Role-Tiny-1.003003.tar.gz')
