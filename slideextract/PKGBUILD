# Maintainer: Angelo Haller <angelo@szanni.org>

pkgname=slideextract
pkgver=0.0.1
pkgrel=1
pkgdesc="Extract slides from video."
arch=('i686' 'x86_64')
url="http://szanni.org/slideextract"
license=('BSD')
depends=('opencv>=2.0')
source=($url/download/$pkgname-$pkgver.tar.xz)
sha256sums=('7c52b5ffa77f6e77fe2217e86c79c67575cf7998b74467868eed91b7d0f83ecf')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -D -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
