pkgname=fd
pkgver=3.00j
pkgrel=1
pkgdesc="Ncurses file and directory management tool"
arch=('any')
url="http://hp.vector.co.jp/authors/VA012337/soft/fd/"
license=('custom')
depends=('ncurses')
options=(!emptydirs)
source=(http://hp.vector.co.jp/authors/VA012337/soft/fd/FD-$pkgver.tar.gz 'LICENSE')
md5sums=('9e12c8a1480cc5f535bf6df852a0defc'
         '9792276314f0b2a716ce3d5078bf2e13')

build() {
 cd ${srcdir}/FD-${pkgver}
 install -d ${pkgdir}/usr/{share/man/man1,bin,share/licenses/${pkgname}}
 make
 make PREFIX=${pkgdir}/usr DESTDIR=${pkgdir}/ install
 install -Dm644 ${pkgdir}/usr/man/man1/{fd.1,fdsh.1} ${pkgdir}/usr/share/man/man1/
 install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/
 rm -r ${pkgdir}/usr/man
 }

