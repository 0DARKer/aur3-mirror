pkgname=viridian
pkgver=1.2
pkgrel=1
pkgdesc="Ampache front-end"
arch=(any)
url="https://launchpad.net/viridianplayer"
license=('GPL')
depends=("dbus-python" "gstreamer0.10-python" "python2" "pygtk")
makedepends=("python2")
source=("http://launchpad.net/viridianplayer/trunk/1.2-release/+download/${pkgname^}-$pkgver.tar.gz")
md5sums=('f16aa9505159a21aefe6bf7366b9a764') #generate with 'makepkg -g'

build() {
  cd "$srcdir/${pkgname^}-$pkgver"
  python2 setup.py install --root=$pkgdir/ --optimize=1
}

