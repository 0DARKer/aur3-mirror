# Maintainer: Radu Andries <admiral0@tuxfamily.org>

pkgname=kdevelop-qmake-git
pkgver=20121028
pkgrel=1
pkgdesc="Support for Qt's qmake build system"
arch=('i686' 'x86_64')
url="https://projects.kde.org/projects/playground/devtools/plugins/kdev-qmake"
license=('GPL')
depends=('kdevelop-git')
makedepends=('git' 'cmake' 'automoc4' 'kdevelop-pg-qt-git')

_gitroot="git://anongit.kde.org/kdev-qmake"
_gitname="kdev-qmake"

build() {
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "$srcdir"
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release ../$_gitname
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
} 
