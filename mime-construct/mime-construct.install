# arg 1:  the new package version
post_install() {
  echo ">>> remember to have a sendmail program or symlink"
  echo ">>> ready at /usr/sbin/sendmail"
  /bin/true
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
    post_install $1
}

op=$1
shift
[ "$(type -t "$op")" = "function" ] && $op "$@"

