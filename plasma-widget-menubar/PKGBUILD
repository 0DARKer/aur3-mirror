pkgname=plasma-widget-menubar
pkgver=0.1.9
pkgrel=1
pkgdesc="A Plasma widget to display menubar of application windows"
url="https://launchpad.net/plasma-widget-menubar"
arch=(i686 x86_64)
license=(GPL)
depends=('qt' 'kdelibs' 'libdbusmenu-qt-git')
makedepends=('cmake')
groups=()
source=(http://launchpad.net/plasma-widget-menubar/trunk/0.1.9/+download/plasma-widget-menubar-0.1.9.tar.bz2)
md5sums=('3338fe6cc6e0a8066bd16227b87892f4')


build() {
  cd $srcdir/plasma-widget-menubar-0.1.9
    cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=release
    make || return 1
      make DESTDIR=$pkgdir install || return 1
      }
