# Maintainer: Dany Martineau <dany.luc.martineau at gmail.com>

pkgname=kipi-plugins-svn
pkgver=1213215
pkgrel=1
pkgdesc="libkipi plugins for digikam and kde apps,svn version"
arch=('i686' 'x86_64')
url="http://www.kipi-plugins.org/"
license=('GPL')
depends=('kdegraphics4-svn' 'kdepimlibs4-svn' 'opencv' 'libgpod>=0.7.0')
makedepends=('subversion' 'cmake' 'automoc4' 'pkgconfig')
conflicts=('kipi-plugins')    
provides=('kipi-plugins')
optdepends=('imagemagick: for picture manipulation'
	    'hugin: for expoblending plugin')
install=('kipi-plugins-svn.install')
_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/extragear/graphics/kipi-plugins/
_svnmod=kipi-plugins-svn

build() {
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir $_svnmod-build
  cd $_svnmod-build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_SKIP_RPATH=ON
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  rm -rf $startdir/src/$_svnmod-build
}
