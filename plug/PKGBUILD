# Maintainer: Fortunato Ventre (voRia) <vorione AT gmail DOT com>

pkgname=plug
pkgver=1.0
pkgrel=3
pkgdesc="Linux software for Fender Mustang amplifiers"
arch=('i686' 'x86_64')
url="http://piorekf.org/plug/"
license=('GPL3')
depends=('qt' 'libusb')
makedepends=('qt' 'libusb')
source=(${pkgname}-${pkgver}.tar.gz::https://bitbucket.org/piorekf/plug/get/v1.0.tar.gz)
md5sums=('6a457e3b9d53091f1f02f025952e0fae')

build() {
	cd ${srcdir}/piorekf-plug-*/plug
	qmake target.path=/usr/bin plug.pro || return 1
	make || return 1
	make INSTALL_ROOT=${pkgdir} install || return 1
	mkdir -p ${pkgdir}/usr/share/doc/plug/
	cp LICENSE ${pkgdir}/usr/share/doc/plug/
	cp README ${pkgdir}/usr/share/doc/plug/
	# Remove empty directory
	rm -r ${pkgdir}/usr/local/
}

