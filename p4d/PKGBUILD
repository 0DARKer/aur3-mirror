pkgname=p4d
pkgver=2014.2.962050
pkgrel=1
pkgdesc="Perforce Server"
arch=('x86_64')
url="http://www.perforce.com"
license=('custom:p4d')
depends=()
source=(
        http://www.perforce.com/downloads/perforce/r${pkgver:2:4}/bin.linux26${CARCH}/${pkgname}
        p4d.service
       )
sha1sums=('1c0452069ee9e1510cae50606ed644aadc3546b6'
          'da877d48cc888086d8a3ffb62dcd0f8103515a85')

package() {
    install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
    install -Dm644 p4d.service ${pkgdir}/etc/systemd/system/p4d.service
}

