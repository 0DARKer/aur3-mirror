pkgname=p4d
pkgver=2014.2.958074
pkgrel=1
pkgdesc="Perforce Server"
arch=('x86_64')
url="http://www.perforce.com"
license=('custom:p4d')
depends=()
source=(
        http://www.perforce.com/downloads/perforce/r${pkgver:2:4}/bin.linux26${CARCH/i6/x}/${pkgname}
        p4d.service
       )
sha1sums=('19a8ef56b64234ecc72bc60839036dc450af2ad1'
          'da877d48cc888086d8a3ffb62dcd0f8103515a85')

package() {
    install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
    install -Dm644 p4d.service ${pkgdir}/etc/systemd/system/p4d.service
}

