# Contributor: Christian Hesse <mail@earthworm.de>

pkgname=vmware-view-open-client
_realname=VMware-view-open-client
pkgver=4.5.0
_realver=4.5.0-297975
pkgrel=1
pkgdesc="VMware View Open Client lets you connect from a Linux desktop to remote Windows desktops managed by VMware View"
conflicts='vmware-view-open-client-beta'
provides='vmware-view-open-client-beta'
arch=('i686' 'x86_64')
url="http://code.google.com/p/vmware-view-open-client/"
license=('LGPL')
depends=('curl' 'boost' 'gtk2' 'openssl' 'libxml2' 'icu' 'intltool' 'rdesktop')
source=(http://vmware-view-open-client.googlecode.com/files/${_realname}-source-${_realver}.tar.gz
  curl-types.fix)

build() {
  cd "${srcdir}/${_realname}-source-${_realver}"

  patch -Np1 < ${srcdir}/curl-types.fix

  ./configure --with-buildtype=release --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}/" install
}

# vim:set ts=2 sw=2 et:
md5sums=('c750209ff0dc4043847d4566bb70f9d1'
         'f889ada3ff643ffc8eb24895c4dc7ec2')
