pkgname=mint-backgrounds-xfce
pkgver=2012.10.31
pkgrel=1
pkgdesc="Linux Mint Xfce background"
arch=('any')
url="http://www.linuxmint.com"
license=('GPL3')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=''
changelog=
source=("$pkgname-$pkgver.tar.gz::http://packages.linuxmint.com/pool/main/m/$pkgname/mint-backgrounds-xfce_$pkgver.tar.gz")

noextract=()

build() {
	cd $srcdir/$pkgname-$pkgver
	
}

package() {
	cd $srcdir/$pkgname-$pkgver
	mkdir -p $pkgdir/usr/share/backgrounds/xfce/
	mv $srcdir/$pkgname-$pkgver/usr/share/xfce4/backdrops/*jpg $pkgdir/usr/share/backgrounds/xfce/
	mkdir -p $pkgdir/usr/share/doc/$pkgname/
	mv $srcdir/$pkgname-$pkgver/usr/share/xfce4/backdrops/Credits $pkgdir/usr/share/doc/$pkgname/
	mv $srcdir/$pkgname-$pkgver/debian/changelog $pkgdir/usr/share/doc/$pkgname/
	mv $srcdir/$pkgname-$pkgver/debian/copyright $pkgdir/usr/share/doc/$pkgname/
}
md5sums=('a4218aab0b15943d2e7b5a1bd0738ae1')
