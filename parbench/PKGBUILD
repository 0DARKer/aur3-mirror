# Maintainer: Greg Fitzgerald <greg@gregf.org>
pkgname=parbench
pkgver=1.3.2
pkgrel=1
pkgdesc="Visual HTTP Concurrency / Load Tool"
arch=('i686' 'x86_64')
url="https://github.com/andrewvc/parbench"
license=('MIT')
depends=(java-runtime)
source=("https://github.com/downloads/andrewvc/${pkgname}/${pkgname}-${pkgver}-standalone.jar"
        ${pkgname}.sh)
md5sums=('afb1ce8f8211528e81b63cb68eb3a15b'
          'f078caa9dca27d83f1cc87fabca30c64')
noextract=(${source[@]##*/})

package() {
  cd "${srcdir}"
  install -Dm755 ${pkgname}.sh "${pkgdir}"/usr/bin/${pkgname}
  install -Dm644 ${pkgname}-${pkgver}-standalone.jar "${pkgdir}"/usr/bin/${pkgname}.jar
}
