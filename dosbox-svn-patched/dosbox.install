post_install() {
  update-desktop-database -q
  gtk-update-icon-cache -f '/usr/share/icons/hicolor'
}

post_upgrade() {
  update-desktop-database -q
  gtk-update-icon-cache -f '/usr/share/icons/hicolor'
}

post_remove() {
  update-desktop-database -q
  gtk-update-icon-cache -f '/usr/share/icons/hicolor'
}

op=$1
shift
$op $*
