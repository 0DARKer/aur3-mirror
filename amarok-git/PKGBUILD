# Contributor: Jakub Schmidtke <sjakub-at-gmail-dot-com>

pkgname=amarok-git
pkgver=20110131
pkgrel=1
pkgdesc="amaroK - a media player for KDE"
arch=("i686" "x86_64")
url="http://amarok.kde.org"
license=('GPL')
depends=('qt' 'libmysqlclient' 'kdebase-runtime' 'kdelibs' 'taglib' 'taglib-extras'  'phonon' 'strigi' 'qtscriptgenerator')
makedepends=('pkgconfig' 'git' 'automoc4' 'cmake' 'libgpod' 'libmtp' 'libmp4v2' 'loudmouth' 'qca' 'liblastfm')
install=amarok.install
optdepends=('libmtp:     for Microsoft mtp support'
            'libgpod:    for Apple Ipod support'
            'loudmouth:  for mp3tunes support'
            'libmp4v2:   for reading/writing mp4 tags'
            'qca:        for ampache support'
            'liblastfm:  for Last.fm support')
conflicts=('amarok' 'amarok2' 'amarok2-svn')
replaces=('amarok-svn')

_gitroot="git://anongit.kde.org/amarok.git"
_gitname="amarok"

source=()
md5sums=()

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d "${srcdir}/${_gitname}" ] ; then
    cd ${_gitname} && git pull --rebase
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf ${srcdir}/build
  mkdir -p ${srcdir}/build
  cd ${srcdir}/build || return 1

  cmake -DCMAKE_INSTALL_PREFIX=$( kde4-config --prefix ) -DCMAKE_BUILD_TYPE=Release ../${_gitname}

  make || return 1
  make DESTDIR=$pkgdir install || return 1

  # One of libraries for strigi casuses problems with m4v files
  rm -rf ${pkgdir}/usr/lib/strigi
}
