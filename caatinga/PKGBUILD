# Maintainer: Leonidas Spyropoulos <artafinde at gmail dot com>

pkgname=caatinga
pkgver=1.0.1
pkgrel=1
pkgdesc="Caatinga is a command line backup program written in Python"
arch=('any')
url="https://github.com/headmastersquall/caatinga"
license=('GPL3')
depends=('python2-distribute')
conflicts=('caatinga-git')
provides=('caatinga')
source=(https://github.com/headmastersquall/caatinga/archive/caatinga-1.0.1.tar.gz)
md5sums=('a20a226f1b4d2726e736cf4ed5501da8')

package() {
    cd ${srcdir}/${pkgname}-${pkgname}-${pkgver}
    python2 setup.py install --root="${pkgdir}/" --optimize=1
}

