pkgname=arping
pkgver=2.08
pkgrel=1
pkgdesc="ARP ping utility"
arch=(i686 x86_64)
url="http://www.habets.pp.se/synscan/programs.php?prog=arping"
license=('GPL')
depends=('libnet')
makedepends=('make')
source=(http://www.habets.pp.se/synscan/files/$pkgname-$pkgver.tar.gz)
md5sums=('36dba82f8a6084b634aa6f4aac6225c6')

build()
{
    mkdir -p $startdir/pkg/usr/bin
    mkdir -p $startdir/pkg/usr/share/doc/arping
    mkdir -p $startdir/pkg/usr/share/licenses/arping

    cd $startdir/src/$pkgname-$pkgver
    make || return 1

    install -m0755 $startdir/src/$pkgname-$pkgver/arping $startdir/pkg/usr/bin/arping
    install -m0755 $startdir/src/$pkgname-$pkgver/arping-scan-net.sh $startdir/pkg/usr/bin/arping-scan-net.sh
    install -m0644 $startdir/src/$pkgname-$pkgver/README $startdir/pkg/usr/share/doc/arping/README
    install -m0644 $startdir/src/$pkgname-$pkgver/LICENSE $startdir/pkg/usr/share/licenses/arping/LICENSE
}
