pkgname=pyclewn
pkgver=1.5
pkgrel=1
pkgdesc="A python version of gdb support for vim"
license=('GPL2')
arch=(i686 x86_64)
url="http://pyclewn.wiki.sourceforge.net"
depends=('python2' 'gvim>=7.3' 'gdb')
install=vimdoc.install
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('bb934de2406d16fb41425b04d1974859')

build() {
  cd $srcdir/$pkgname-$pkgver
  # fixing a duplicated marker in pyclewn.txt
  sed -i 's/\*C\*//' runtime/doc/pyclewn.txt
  vimdir=$pkgdir/usr/share/vim/vim73 python2 setup.py install --home=$pkgdir/usr
  # Fixme, find a better way to set the correct python path
  mv $pkgdir/usr/lib/python $pkgdir/usr/lib/python2.7
  # removing tags to avoid conflict
  rm $pkgdir/usr/share/vim/vim73/doc/tags
}
