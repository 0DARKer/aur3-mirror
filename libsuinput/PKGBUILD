# Contributor: Simon Brakhane <simon.brakhane at web dot de>

pkgname=libsuinput
pkgver=0.2
pkgrel=2
pkgdesc="Simple C-API to the Linux uinput-system"
arch=('i686' 'x86_64')
url="http://codegrove.org/libsuinput/"
license=('LGPL3')
depends=()
source=(http://codegrove.org/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('cdc33640882058e3cad1106037d3f954')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}


