pkgname="lightzone"
pkgver=4.0.0
pkgrel=3
pkgdesc="A professional photo browser and editor, like Aperture or Lightroom"
url="http://lightzoneproject.org/"
license=("custom")
arch=("i686" "x86_64")

if [[ $CARCH == 'i686' ]]; then
  source=("${pkgname}-${pkgver}.deb::http://download.opensuse.org/repositories/home:/ktgw0316:/LightZone/Debian_7.0/i386/lightzone_4.0.0-0obs20130731_i386.deb")
  md5sums=('6fa40077704a65cb75fef2d2430999a1')
  depends+=("gcc-libs" "libstdc++5" "libx11" "libxtst" "java-runtime")
elif [[ $CARCH == 'x86_64' ]]; then
  source=("${pkgname}-${pkgver}.deb::http://download.opensuse.org/repositories/home:/ktgw0316:/LightZone/Debian_7.0/amd64/lightzone_4.0.0-0obs20130731_amd64.deb")
  md5sums=('be8c30088a74ab284771d15510b675e0')
  depends+=("lib32-gcc-libs" "lib32-libstdc++5" "lib32-libx11" "lib32-libxcb" "lib32-libxtst" "java-runtime")
fi

build() {
  cd "${srcdir}"
  tar -xf data.tar.gz
}

package() {
  cd "${srcdir}"

# Install
  cp -dr --no-preserve=ownership {opt,usr} "${pkgdir}"/
}
