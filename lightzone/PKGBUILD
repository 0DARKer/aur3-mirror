pkgname="lightzone"
pkgver=4.0.0
pkgrel=1
pkgdesc="A professional photo browser and editor, like Aperture or Lightroom"
url="http://lightzoneproject.org/"
license=("custom")
arch=("i686" "x86_64")

if [[ $CARCH == 'i686' ]]; then
  source=("${pkgname}_linux-${pkgver}.deb::http://download.opensuse.org/repositories/home:/ktgw0316:/LightZone/Debian_7.0/i386/lightzone_4.0.0-0obs20130609_i386.deb")
  md5sums=('9197aa3b86d1ec2d06e313438dbfdfd2')
  depends+=("gcc-libs" "libstdc++5" "libx11" "libxtst" "java-runtime")
elif [[ $CARCH == 'x86_64' ]]; then
  source=("${pkgname}_linux_x64-${pkgver}.deb::http://download.opensuse.org/repositories/home:/ktgw0316:/LightZone/Debian_7.0/amd64/lightzone_4.0.0-0obs20130609_amd64.deb")
  md5sums=('a1faa7f57b104c595537c6437b503622')
  depends+=("lib32-gcc-libs" "lib32-libstdc++5" "lib32-libx11" "lib32-libxcb" "lib32-libxtst" "java-runtime")
fi

build() {
  cd "${srcdir}"
  tar -xf data.tar.gz
}

package() {
  cd "${srcdir}"

# Install
  cp -dr --no-preserve=ownership {opt,usr} "${pkgdir}"/
}
