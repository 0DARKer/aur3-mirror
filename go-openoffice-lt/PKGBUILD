# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>

pkgname=go-openoffice-lt
pkgver=3.2.1
pkgrel=3
_lang=lt
_srcurl=http://go-oo.mirrorbrain.org/stable/linux-x86/${pkgver}/
_ooobasis=ooobasis${pkgver:0:3}-${_lang}
_intver=${pkgver}-9505
pkgdesc="Go-OpenOffice ${_lang} language files"
arch=(any)
url="http://go-oo.org/discover/"
license=(LGPL)
depends=("go-openoffice>={$pkgver}")
makedepends=(rpmextract)

source=(
	${_srcurl}${_ooobasis}-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-base-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-binfilter-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-calc-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-draw-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-help-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-impress-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-math-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-res-${_intver}.i586.rpm
	${_srcurl}${_ooobasis}-writer-${_intver}.i586.rpm
	${_srcurl}openoffice.org3-lt-${_intver}.i586.rpm
)

md5sums=('f3c5e061c8c3bff7d9da12b97ffbc0f6'
         'e16c18d1f0031de972cbd30f59c2b425'
         '23e5a51efb632e4e97b096502593a347'
         'b6ae9c16c4f97bdb6f90ee2218a06c6b'
         'a7573d9b1e99308a9be8268dda28f560'
         '377ebf85d3cc35f1bc299d5c9a1a618b'
         'bc7603deb13f8ac8c1fbd4141ddc1b32'
         '7b7913b41ad6ec6de330f81552c4e7dc'
         '11e5f5d472722f1b425c00cca264c3a6'
         'dcb11e393bf47c9b76759207df2df43e'
         '9bd7efce6e87424fd5c54ff26b2d0930')

build() {
	cd ${srcdir}
	for i in *.rpm
		do rpmextract.sh $i
	done

	mkdir -p ${pkgdir}/usr/lib/go-openoffice/basis-link
	cp -R opt/openoffice.org/basis${pkgver:0:3}/* ${pkgdir}/usr/lib/go-openoffice/basis-link
	cp -R opt/openoffice.org3/* ${pkgdir}/usr/lib/go-openoffice/basis-link
	chown root:root -R ${pkgdir}/usr/lib/go-openoffice
}

