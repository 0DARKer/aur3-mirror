# Maintainer: Simone Sclavi 'Ito' <darkhado@gmail.com>

pkgname=crack-attack-sounds
pkgver=1.0
pkgrel=1
pkgdesc="This package copies some wav file from lbreakout2 to add sound effects to crack-attack :)"
arch=('any')
url="http://www.miguev.net/blog/en/2010/09/02/audio-support-for-crack-attack/"
license=('GPL')
depends=('crack-attack')
makedepends=('lbreakout2=2.6.3')
install=cas.install

package() {
    mkdir -p $pkgdir/usr/share/crack-attack/sounds
    install -m644 /usr/share/lbreakout2/sounds/joker.wav $pkgdir/usr/share/crack-attack/sounds/block_awaking.wav
    install -m644 /usr/share/lbreakout2/sounds/metal.wav $pkgdir/usr/share/crack-attack/sounds/block_dying.wav 
    install -m644 /usr/share/lbreakout2/sounds/exp.wav   $pkgdir/usr/share/crack-attack/sounds/block_fallen.wav
    install -m644 /usr/share/lbreakout2/sounds/goldshower.wav $pkgdir/usr/share/crack-attack/sounds/countdown.wav
    install -m644 /usr/share/lbreakout2/sounds/speeddown.wav $pkgdir/usr/share/crack-attack/sounds/garbage_fallen.wav
    install -m644 /usr/share/lbreakout2/sounds/wall.wav $pkgdir/usr/share/crack-attack/sounds/garbage_shattering.wav
}


