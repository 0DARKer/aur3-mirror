pkgname=reptyr
pkgver=0.3
pkgrel=1
pkgdesc="A tool for \"re-ptying\" programs"
arch=('i686' 'x86_64')
license=('BSD')
url="https://github.com/nelhage/reptyr"
depends=('openssl')
source=("https://github.com/nelhage/$pkgname/tarball/$pkgname-$pkgver")
md5sums=('4db9a6d8c275ef02d20d56bec76ef5b1')

build() {
	cd "$srcdir/nelhage-$pkgname-b83e8f6"

	make
}

package() {
	cd "$srcdir/nelhage-$pkgname-b83e8f6"

	make "DESTDIR=$pkgdir" "PREFIX=/usr" install
} 
