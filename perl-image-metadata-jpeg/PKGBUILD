# Maintainer: Archie <xMickael@ifrance.com>

pkgname=perl-image-metadata-jpeg
pkgver=0.15
pkgrel=2
pkgdesc="Perl extension for showing/modifying JPEG (meta)data."
depends=('perl')
arch=('i686')
license=('GPL')
source=(http://search.cpan.org/CPAN/authors/id/B/BE/BETTELLI/Image-MetaData-JPEG-$pkgver.tar.gz)
url="http://search.cpan.org/~bettelli/Image-MetaData-JPEG/"
md5sums=('a6d6a38bf07343aa1749d7fb6a5442ca')

build() {
  cd $startdir/src/Image-MetaData-JPEG-$pkgver
  perl Makefile.PL
  make || return 1
  make DESTDIR=$startdir/pkg/ install
  /usr/bin/find $startdir/pkg -name '.packlist' -exec rm '{}' \;
  /usr/bin/find $startdir/pkg -name 'perllocal.pod' -exec rm '{}' \;
}
