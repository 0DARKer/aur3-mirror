# Generator  : CPANPLUS::Dist::Arch 1.09
pkgname='perl-test-manifest'
pkgver='1.23'
pkgrel='1'
pkgdesc="configure which test files to run"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Test-Manifest'
source=('http://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/Test-Manifest-1.23.tar.gz')
md5sums=('81c8744987b67d35af05a74a3c7f1742')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Test-Manifest-1.23"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
