pkgname=frc-wpilib
pkgver=2013svn3623+1
pkgrel=1
pkgdesc="The WPI FIRST Robotics Competition C/C++ library for the VxWorks 6.3 GCC Toolchain"
arch=(any)
provides=('frc-wpilib')
conflicts=('frc-gcc-tools')
url="http://firstforge.wpi.edu/sf/projects/c--11_toochain"
license=('custom=FRC-BSD')
depends=()
makedepends=('gcc-powerpc-wrs-vxworks')
options=('!strip' 'libtool' '!zipman')
source=(https://www.dropbox.com/s/5exwqg6izhd2xrf/"$pkgname"_"$pkgver".orig.tar.bz2)
sha512sums=('6ccc5fecbca1adb5ff35b5186c4e138d2021003b157f74e3109073d8331f40fad3188ca6b7f201a89ecf111dd327ce8f5f5b8fbb4734ab67f035e10289bc8c63')

_wpilib='WPILib'

package() {
	cd $srcdir/$_wpilib
	make -j2
	make -j2 install DESTDIR=/$pkgdir PREFIX=/usr/powerpc-wrs-vxworks
}
