# Contributor: Pascal E. <archlinux at hardfalcon dot net>

pkgname="acsccid"
pkgver="1.0.2"
pkgrel=1
pkgdesc="ACS CCID PC/SC Driver"
arch=('i686' 'x86_64')
url="http://www.acs.com.hk/"
license=('GPL2')
depends=('pcsclite-libudev' 'pcsc-tools' 'pcsc-perl' 'ccid')
makedepends=('make')
source=("http://www.acs.com.hk/drivers/eng/ACR122U_driver_Lnx_Mac10.5_10.6_1.02_P.zip")
md5sums=('ec573a6c9706289aca25ddb59f48cbfc')
sha512sums=('4774cb705050b7107fa74dff3a7cb97f85f5c050a6c9a4baae74e332ecccc8a409ba349fc3bb6ddb2886d4ba5416a4a140026a446d039ac98cf1725ca77533d7')
noextract=("ACR122U_driver_Lnx_Mac10.5_10.6_1.02_P.zip")

build()
{
	cd ${srcdir} || return 1
	unzip ACR122U_driver_Lnx_Mac10.5_10.6_1.02_P.zip || return 1
	tar -jxvf ${pkgname}-${pkgver}.tar.bz2 || return 1
	cd ${pkgname}-${pkgver} || return 1
	./configure --prefix=/usr || return 1
	make || return 1
}	

package() {
  cd "${srcdir}/${pkgname}-${pkgver}" || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING" || return 1
}
