# /etc/conf.d/uwsgi
# uwsgi settings

# the binary
UWSGI_BIN="/usr/bin/uwsgi"
# the ini config
UWSGI_INI="/etc/uwsgi/uwsgi.ini"
# the pid file
UWSGI_PID="/var/run/uwsgi.pid"
# the log file
UWSGI_LOG="/var/log/uwsgi.log"

# the arguments to the binary
UWSGI_ARGS=("--ini $UWSGI_INI"
            "--pidfile $UWSGI_PID"
            "--daemonize $UWSGI_LOG")

START_COMMAND="$UWSGI_BIN ${UWSGI_ARGS[*]}"
