#Maintainer: Mathias Fussenegger <f.mathias {Ã¤t} zignar DOT net>
pkgname=spacman
pkgver=0.8.0
pkgrel=3
pkgdesc="simple wrapper around pacman/pacsearch/aria2c to improve file download speed"
arch=('any')
license=('GPL')
url=http://github.com/chobojordi/spacman
source=(https://github.com/downloads/chobojordi/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('df8100a5e66477c1a69606f16516b84e')

# Python 3
depends=('python' 'pacman-contrib' 'reflector')
build() {
  python3 setup.py install --root=$pkgdir --prefix=/usr --optimize=1 || return 1
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}

