# Contributor: Urs Wolfer <uwolfer @ fwo.ch>

pkgname=ttf-droid
pkgver=20110328
pkgrel=1
_snapshot=2c2d5e3
pkgdesc="A font created by Ascender Corporation for use by the Open Handset Alliance platform, Android."
arch=('any')
license=('apache')
url="http://code.google.com/android/"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=ttf.install
source=(http://archlinux.puzzle.ch/files/$pkgname-$_snapshot.tar.gz)
md5sums=('caafc82c47907b7a5dbdfb633e44a33e')

build() {
  install -d $pkgdir/usr/share/fonts/TTF/ || return 1
  install -m644 base-$_snapshot/*.ttf $startdir/pkg/usr/share/fonts/TTF/ || return 1
}
