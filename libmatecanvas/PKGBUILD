pkgname=libmatecanvas
pkgver=2011.12.16
pkgrel=1
pkgdesc="The MATE Canvas library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libglade' 'libart-lgpl' 'libmate')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
groups=('mate')
url="http://matsusoft.com.ar/projects/mate/"
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f0c382c2314b63d08f78d8e9e9013b0dd1e798eaf09a3eaba00fd012db9be9d5')

build() {
    cd "${srcdir}"
    ./autogen.sh \
        --prefix=/usr --disable-static \
	    --enable-glade || return 1
    #--with-gtk=3.0
    make || return 1
}

package() {
    cd "${srcdir}"

    make DESTDIR="${pkgdir}" install
}
