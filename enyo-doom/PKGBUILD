# Contributor: Frederic Bezies <fredbezies at gmail.com>

pkgname=enyo-doom
pkgver=0.8r2
pkgrel=1
pkgdesc="GUI launcher for Doom running under the Doomsday and Chocolate Doom engine."
arch=('i686' 'x86_64')
url="http://doktorseven.miskie.net/site/page.php?4"
license=('GPL')
depends=('qt')
makedepends=('cmake')
optdepends=('doomsday' 'chocolate-doom' 'prboom' 'zdoom')
source=(http://doktorseven.miskie.net/Files/enyo-doom-${pkgver}.tar.gz)

md5sums=('0a555109a5ea35246d32e6d28d4000f8')

build() {
cd ${srcdir}/${pkgname}-${pkgver}
cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
make
  }

package() {
cd ${srcdir}/${pkgname}-${pkgver}
make DESTDIR=${pkgdir} install
}

