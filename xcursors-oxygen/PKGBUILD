pkgname=xcursors-oxygen
pkgver=4.8
_pkgver=oxygencursors_0.0.2012-06-kde4.8-2.1_all
pkgrel=1
pkgdesc="KDE oxygen theme X.org server cursors"
arch=('any')
url="http://packages.debian.org/unstable/x11/oxygencursors"
license=('GPL')
depends=('xorg-server')
conflicts=('oxygencursors-debian')
source=(http://ftp.debian.org/debian/pool/main/o/oxygencursors/"$_pkgver".deb)
noextract=("$_pkgver".deb)
md5sums=('23c6fdd4d56c7998f448726727e34fc9')

package() {
  bsdtar -xf "$_pkgver".deb data.tar.xz
  bsdtar -xf data.tar.xz -C $pkgdir
}

