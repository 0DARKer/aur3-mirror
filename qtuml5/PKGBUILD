# Contributor: Sandro Andrade <sandroandrade at kde.org>
pkgname=qtuml5
pkgver=0.89
pkgrel=0
pkgdesc="QtUml is a Qt5-based implementation of OMG's UML (Unified Modeling Language) specification"
arch=('i686' 'x86_64')
url="http://qt.gitorious.org/qtplayground/qtmof"
license=('LGPL')
depends=('qtwrappedobjects5')
source=(http://qt.gitorious.org/qtplayground/qtmof/archive-tarball/917a57e7)
 
build() {
  cd $srcdir/qtplayground-qtmof/
  qmake-qt5 -r
 
  cd $srcdir/qtplayground-qtmof/src/uml/
  make || return 1
 
  cd $srcdir/qtplayground-qtmof/src/plugins/metamodels/uml/
  make || return 1
}
 
package() {
  cd $srcdir/qtplayground-qtmof/src/uml/
  make INSTALL_ROOT=${pkgdir} install
 
  cd $srcdir/qtplayground-qtmof/src/plugins/metamodels/uml/
  make INSTALL_ROOT=${pkgdir} install
}
 
md5sums=('3999ff45c36e5d1008494d1f436fd90f')
