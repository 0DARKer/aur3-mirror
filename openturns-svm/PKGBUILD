# Maintainer: Julien Schueller <schueller at phimeca dot com>

pkgname=openturns-svm
pkgver=0.0
pkgrel=1
pkgdesc="OpenTURNS SVM library extension module"
arch=('i686' 'x86_64')
url="http://www.openturns.org"
license=('LGPL3')
depends=('openturns' 'libsvm' 'python')
makedepends=('cmake' 'gcc' 'openturns' 'libsvm' 'python')
# source=('')
# md5sums=('')

build() {
  svn co https://svn.openturns.org/openturns-modules/openturns-svm/trunk $srcdir/$pkgname-$pkgver
  cd $srcdir/$pkgname-$pkgver
  cmake . -DCMAKE_INSTALL_PREFIX=/usr \
          -DSYSTEM_INSTALL=ON \
          -DUSE_INTERNAL_LIBSVM=OFF
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}