# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# See http://wiki.archlinux.org/index.php/VCS_PKGBUILD_Guidelines
# for more information on packaging from GIT sources.

# Maintainer: Your Name <youremail@domain.com>
pkgname=libonion-git
pkgver=0.4.0
pkgrel=1
pkgdesc="Onion plans to be a lightweight C library that facilitate to create simple HTTP servers."
arch=(any)
url="https://github.com/davidmoreno/onion/"
license=('LGPL')
groups=()
depends=()
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=git://github.com/davidmoreno/onion.git
_gitname=onion

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  if [ -d build ] ; then
    rm -rf build
  fi
  mkdir build && cd build
  
  echo "Fixing Cmake stuff..."
  cat ../src/CMakeLists.txt | sed 's#add_subdirectory(orm)##g' > tmp
  mv tmp ../src/CMakeLists.txt
  cat ../tests/CMakeLists.txt | sed 's#add_subdirectory(09-orm)##g' > tmp
  mv tmp ../tests/CMakeLists.txt
  cat ../src/onion/handlers/webdav.c | sed 's#ONION_ERROR("Base #//#g' > tmp
  mv tmp ../src/onion/handlers/webdav.c

  cmake -DBUILD_EXAMPLES=OFF -DCMAKE_INSTALL_PREFIX="/usr" ..
  make
}

package() {
  cd "$srcdir/$_gitname-build/build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
