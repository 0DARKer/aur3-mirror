pkgname=python2-ets
pkgver=3.6.0
_githubtag=cbd1f0b
pkgrel=2
pkgdesc="Enthought Tool Suite"
arch=('any')
url="https://github.com/enthought/ets"
license=('BSD')
depends=('python2' 'python2-apptools>=3.4.1' 'python2-blockcanvas>=3.2.1' 'python2-chaco>=3.4.0'
         'python2-codetools>=3.2.0' 'python2-enable>=3.4.0' 'python2-enthoughtbase>=3.1.0'
         'python2-envisagecore>=3.2.0' 'python2-envisageplugins>=3.2.0' 'python2-etsdevtools>=3.1.1'
         'python2-graphcanvas>=3.0.0' 'python2-mayavi>=3.4.1' 'python2-scimath>=3.0.7' 'python2-traits>=3.6.0'
         'python2-traitsbackendqt>=3.6.0' 'python2-traitsbackendwx>=3.6.0' 'python2-traitsgui>=3.6.0')
makedepends=('python2-distribute')
optdepends=('python2-ets-doc')
conflicts=('python2-ets-git')
options=(!emptydirs)

source=("https://github.com/enthought/ets/tarball/${pkgver}")
md5sums=('e3edc78a60061cd9e206d5b2e19a7b9a')

build() {
  cd "$srcdir/enthought-ets-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

