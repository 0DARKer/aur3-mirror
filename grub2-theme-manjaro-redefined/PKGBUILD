# Author of theme: crimsonsuv http://kde-look.org/usermanager/search.php?username=crimsonsuv

pkgname=grub2-theme-manjaro-redefined
pkgver=1.0
pkgrel=1
pkgdesc="Manjaro Redefined GRUB2 theme."
arch=('i686' 'x86_64')
license=('GPL')
url="http://kde-look.org/content/show.php?content=166302"
depends=('grub')
install=$pkgname.install
source=('http://switch.dl.sourceforge.net/project/manjaroredefined/Manjaro-Redefined-Grub-1.0.tar.gz'
        'grub2-theme-manjaro-redefined.install'
       )
md5sums=('SKIP'
         '8a5aad0027c4b2b10d19a04e96f75b17')

package() {
  cd $srcdir
  mkdir -p $pkgdir/boot/grub/themes/Manjaro-Redefined-Grub-1.0
  cp -R Manjaro-Redefined-Grub-1.0 $pkgdir/boot/grub/themes/
}
