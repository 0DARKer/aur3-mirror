# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=gnome-video-arcade-git
pkgver=20100524
pkgrel=1
pkgdesc="GTK2 MAME front-end wich supports both XMAME and SDLMAME(development version)"
url="http://mbarnes.github.com/gnome-video-arcade/"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('dbus' 'gconf' 'gnome-doc-utils' 'gstreamer0.10-base-plugins' 'hicolor-icon-theme' 'libwnck' 'sdlmame' 'sqlite3')
makedepends=('git')
_gitroot="git://git.gnome.org/gnome-video-arcade"
_gitname="gnome-video-arcade"


build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
  	cd $_gitname && git pull origin
  	msg "The local files are updated."
  else
  	git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd ./$_gitname

  sh autogen.sh
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}