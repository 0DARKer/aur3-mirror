# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=gnome-video-arcade-git
pkgver=20111019
pkgrel=1
pkgdesc="GTK3 MAME front-end wich supports both XMAME and SDLMAME(development version)"
url="http://mbarnes.github.com/gnome-video-arcade/"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('dconf' 'dbus' 'gconf' 'gnome-common' 'gnome-doc-utils' 'gstreamer0.10-base-plugins' 'gtk3' 'gtk-doc' 'hicolor-icon-theme' 'libwnck3' 'sdlmame' 'sqlite3')
makedepends=('git')
_gitroot="git://git.gnome.org/gnome-video-arcade"
_gitname="gnome-video-arcade"


build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
  	cd $_gitname && git pull origin
  	msg "The local files are updated."
  else
  	git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  sh autogen.sh
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}