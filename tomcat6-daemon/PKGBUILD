pkgname=tomcat6-daemon
pkgver=2
pkgrel=1
pkgdesc="The Apache Tomcat Daemon"
arch=('i686' 'x86_64')
url="http://commons.apache.org/daemon/"
license="Apache"
groups=('apache-tomcat')
depends=('java-runtime' 'jakarta-commons-daemon' 'tomcat6>=6.0.18')
makedepends=('java-environment')
source=(tomcat)

build() {
	mkdir -p $pkgdir/usr/share/tomcat/bin
	ln -sf /usr/sbin/jsvc $pkgdir/usr/share/tomcat/bin/tomcat
	install -D -m755 $srcdir/tomcat $pkgdir/etc/rc.d/tomcat
}
md5sums=('84163a7166f0a2b376a3667d089a370d')
sha256sums=('a93128a9d98fbafabcf3b158f892152e789949fdbe97be8ea72320b76b018e3d')
