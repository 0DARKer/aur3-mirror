pkgdesc="Enhanced task app for ownCloud"
arch=('any')
url="http://apps.owncloud.com/content/show.php/Tasks+Enhanced?content=164356"
license=('AGPL')
depends=('owncloud')
makedepends=()
options=('!strip')
source=("tasks-${pkgver}.tar.gz::https://github.com/raimund-schluessler/tasks/releases/download/v${pkgver}/tasks_enhanced.tar.gz")
sha512sums=("5ffd49499d6c6b6e11883ded937e34e0718f3009e571f1e3cb9d999d099be79e7f896726372b9bade3621484f511031ab86bee19d77e8666c2f4d873ae6f2458")

package() {
  install -d "${pkgdir}/usr/share/webapps/owncloud/apps"
  cp -a "${srcdir}/tasks_enhanced" "${pkgdir}/usr/share/webapps/owncloud/apps/tasks_enhanced"
}
