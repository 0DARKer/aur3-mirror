pkgname=ocp
pkgver=0.1.20
pkgrel=2
pkgdesc="Open Cubic Player"
arch=('i686' 'x86_64')
url="http://stian.cubic.org/project-ocp.php"
depends=('libsidplay' 'libxxf86vm' 'libvorbis' 'libxpm' 'alsa-lib' 'libmad' 'adplug>=2.1' 'flac' 'sdl')
makedepends=('texinfo' 'desktop-file-utils')
license=('GPL')
source=(http://stian.cubic.org/ocp/ocp-$pkgver.tar.bz2)
md5sums=('f34eca80239e619bff0593b8bf665f98')
install=ocp.install

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make DESTDIR=$pkgdir install || return 1
  rm $pkgdir/usr/share/info/dir
}
