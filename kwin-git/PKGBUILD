# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=kwin-git
pkgver=r12022.2d2e197
pkgrel=1
pkgdesc='KDE Window Manager'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kde/kde-workspace'
license=('LGPL')
depends=('qt5-tools' 'qt5-multimedia' 'plasma-framework-git' 'kcmutils-git' 'knewstuff-git' 'kinit-git' 'libxcursor')
makedepends=('extra-cmake-modules' 'git' 'kf5umbrella-git' 'kdoctools-git')
conflicts=('kwin' 'kde-workspace<0')
provides=('kwin' 'kwin-compositing-kcm-git')
replaces=('kwin-compositing-kcm-git')
source=('git://anongit.kde.org/kwin.git')
md5sums=('SKIP')

pkgver() {
  cd kwin
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  export XDG_DATA_DIRS="/opt/kf5/share:$XDG_DATA_DIRS"

  cd build
  cmake ../kwin/${DIR} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
