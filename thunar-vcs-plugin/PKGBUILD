# Contributor: henning mueller <henning@orgizm.net>

pkgname=thunar-vcs-plugin
pkgver=0.1.2
pkgrel=3
pkgdesc="SVN and GIT integration for Thunar."
arch=(i686 x86_64)
license=(GPL)
url=http://goodies.xfce.org/projects/thunar-plugins/thunar-vcs-plugin
depends=(thunar git subversion apr)
makedepends=(intltool)
source=(http://www.xfce.org/archive/src/thunar-plugins/thunar-vcs-plugin/0.1/thunar-vcs-plugin-0.1.2.tar.bz2)
md5sums=(7928429d8dc719b260d536212568e7b5)
install=($pkgname.install)

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 || return 1
	make || return 1
	make DESTDIR=$pkgdir install
}
