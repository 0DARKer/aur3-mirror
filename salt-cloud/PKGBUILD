# Maintainer: Christer Edwards <christer.edwards@gmail.com>

pkgname=salt-cloud
pkgver=0.8.0
pkgrel=1
pkgdesc="Salt Cloud is a generic cloud provisioning tool"
arch=(any)
url="https://github.com/saltstack/salt-cloud"
license=("APACHE")

depends=('apache-libcloud'
	 'python-paramiko'
	 'python2'
         'python2-yaml'
         'salt')

makedepends=()
optdepends=()
options=()
conflicts=()

source=("https://github.com/downloads/saltstack/salt-cloud/${pkgname}-${pkgver}.tar.gz")

md5sums=('3319c77219d3fdc498647d1c00659f22')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py install --root=${pkgdir}/ --optimize=1
}

