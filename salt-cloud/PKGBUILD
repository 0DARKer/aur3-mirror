# Maintainer: Christer Edwards <christer.edwards@gmail.com>

pkgname=salt-cloud
pkgver=0.8.3
pkgrel=1
pkgdesc="Salt Cloud is a generic cloud provisioning tool"
arch=(any)
url="https://github.com/saltstack/salt-cloud"
license=("APACHE")

depends=('apache-libcloud'
	     'python2-paramiko'
	     'python2'
         'python2-yaml'
         'salt')

makedepends=()
optdepends=()
options=()
conflicts=()

source=("https://github.com/downloads/saltstack/salt-cloud/${pkgname}-${pkgver}.tar.gz")

md5sums=('a8429061c9fe5ae7b706118f8564fd6f')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py install --root=${pkgdir}/ --optimize=1
}

