# Maintainer: Bartlomiej Piotrowski <nospam@bpiotrowski.pl>

pkgname=llpp
pkgver=16
pkgrel=2
pkgdesc='Lightweight, fast and featureful PDF viewer based on MuPDF'
arch=('i686' 'x86_64')
url='http://repo.or.cz/w/llpp.git'
license=('GPL')
conflicts=('llpp-git')
depends=('ncurses' 'mesa' 'glu')
makedepends=('wget' 'unzip' 'ocaml' 'git')
source=(git://repo.or.cz/llpp.git#commit=3312c1e0
        llpp.desktop)
sha256sums=('SKIP'
            'b1f853150b7ee3a937d2f341e16d413693ac4d51878514a569c8225513dd8f51')

build() {
  cd $pkgname
  MAKEFLAGS='-j1' bash buildall.sh
}

package() {
  cd $pkgname
  install -D llpp "$pkgdir"/usr/bin/llpp
  install -Dm0755 "$srcdir"/llpp.desktop "$pkgdir"/usr/share/applications/llpp.desktop
}
