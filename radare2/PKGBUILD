# Maintainer: Guillermo Ramos <0xwille at gmail dot com>

pkgname="radare2"
pkgver=0.7
pkgrel=4
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('LGPL3')
depends=("gmp")
source=("http://radare.org/get/$pkgname-$pkgver.tar.gz")
md5sums=("468367eb881edad325823cabdef5d53d")
sha256sums=("90d1ead59d2d9f4f669ff3a61d642566e60b9c9d6beb6be8af0c4e0fd4181425")

build() {
	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

	cd "$srcdir/$pkgname-$pkgver"

	msg "Configuring..."
	./configure --prefix=/usr

	msg "Building..."
	make

	msg "Installing..."
	make DESTDIR=$pkgdir install
	install -D -m644 man/* "$pkgdir/usr/share/man/man1"
}
