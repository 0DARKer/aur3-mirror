# Maintainer: Guillermo Ramos <0xwille at gmail dot com>

pkgname="radare2"
pkgver=0.7
pkgrel=2
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('LGPL3')
depends=("gmp")
source=("http://radare.org/get/$pkgname-$pkgver.tar.gz")
md5sums=("fcc8fcce619db97df3a8b81237fa3edf")
sha256sums=("dce23d10faf00504d1f93a72ad1e8a98f7327cc45a2c4df6402ac8e8b7ec0cea")

build() {
	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

	cd "$srcdir/$pkgname-$pkgver"

	msg "Configuring..."
	./configure --prefix=/usr

	msg "Building..."
	make

	msg "Installing..."
	make DESTDIR=$pkgdir install
	install -D -m644 man/* "$pkgdir/usr/share/man/man1"
}
