# Maintainer: Guillermo Ramos <0xwille at gmail dot com>

pkgname="radare2"
pkgver=0.7
pkgrel=3
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('LGPL3')
depends=("gmp")
source=("http://radare.org/get/$pkgname-$pkgver.tar.gz")
md5sums=("78f46ad4a7afd05b6367d44a45930674")
sha256sums=("20f91283c6a82583b7551fd39b545d9a4a9eed47aaaade8282ce47d6f3169838")

build() {
	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

	cd "$srcdir/$pkgname-$pkgver"

	msg "Configuring..."
	./configure --prefix=/usr

	msg "Building..."
	make

	msg "Installing..."
	make DESTDIR=$pkgdir install
	install -D -m644 man/* "$pkgdir/usr/share/man/man1"
}
