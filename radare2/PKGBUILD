# Maintainer: Guillermo Ramos <0xwille at gmail dot com>

pkgname="radare2"
pkgver=0.9.6
pkgrel=3
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3' 'LGPL3')
source=("$url/get/$pkgname-$pkgver.tar.xz")
md5sums=("4c2514e788002c19b77a70a3aff14617")
sha256sums=("91e8820ab7003de422cde777af681b0023d6b20253a81759df94578c514ae883")

build() {
	cd "$pkgname-$pkgver"
	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"
	./configure --prefix=/usr
	make
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR=$pkgdir install
	install -D -m644 man/* "$pkgdir/usr/share/man/man1"
}
