# Maintainer: Guillermo Ramos <0xwille at gmail dot com>

pkgname="radare2"
pkgver=0.8.6
pkgrel=2
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('LGPL3')
depends=("openssl")
source=("http://radare.org/get/$pkgname-$pkgver.tar.gz")
md5sums=("b467f2709e3d72148c154586cc3ae40d")
sha256sums=("77ac2039bb98551793023cd26365ac7c4dc6ef93f0b945aea2020d1e83de3966")

build() {
	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

	cd "$srcdir/$pkgname-$pkgver"

	msg "Configuring..."
	./configure --prefix=/usr

	msg "Building..."
	make

	msg "Installing..."
	make DESTDIR=$pkgdir install
	install -D -m644 man/* "$pkgdir/usr/share/man/man1"
}
