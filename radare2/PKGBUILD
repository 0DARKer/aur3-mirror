# Maintainer: Guillermo Ramos <0xwille at gmail dot com>

pkgname="radare2"
pkgver=0.6
pkgrel=3
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('LGPL3')
depends=("gmp")
source=("http://radare.org/get/$pkgname-$pkgver.tar.gz")
md5sums=("3f29181870a4381f260a723ce03ceccd")
sha256sums=("ceda04c318b3148db1077ee349401a451429cdd6ef7478c6c0e68569c7c68849")

build() {
	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

	cd "$srcdir/$pkgname-$pkgver"

	msg "Configuring..."
	./configure --prefix=/usr

	msg "Building..."
	make

	msg "Installing..."
	make DESTDIR=$pkgdir install
	install -D -m644 man/* "$pkgdir/usr/share/man/man1"
}
