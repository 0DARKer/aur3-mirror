# Maintainer: Guillermo Ramos <0xwille at gmail dot com>

pkgname="radare2"
pkgver=0.8.1
pkgrel=1
pkgdesc="Open-source tools to disasm, debug, analyze and manipulate binary files"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('LGPL3')
depends=("gmp")
source=("http://radare.org/get/$pkgname-$pkgver.tar.gz")
md5sums=("d6e7c2863b67c4fa59ac2e82a41c7572")
sha256sums=("8d19d0dee392fc69e2a17e716edb847d5c932c5b4a4e755d91ba0f723df0f832")

build() {
	export LDFLAGS="${LDFLAGS//-Wl,--as-needed}"

	cd "$srcdir/$pkgname-$pkgver"

	msg "Configuring..."
	./configure --prefix=/usr

	msg "Building..."
	make

	msg "Installing..."
	make DESTDIR=$pkgdir install
	install -D -m644 man/* "$pkgdir/usr/share/man/man1"
}
