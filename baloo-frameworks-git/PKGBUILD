# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=baloo-frameworks-git
pkgver=r195.e7441fc
pkgrel=1
pkgdesc="A framework for searching and managing metadata"
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/playground/base/baloo'
license=('LGPL')
depends=('xapian-core' 'kfilemetadata-frameworks-git' 'kidletime-git' 'kcmutils-git' 'krunner-git')
makedepends=('extra-cmake-modules' 'git')
source=('git://anongit.kde.org/baloo#branch=frameworks')
md5sums=('SKIP')

pkgver() {
  cd baloo
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../baloo \
    -DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/opt/kf5
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
