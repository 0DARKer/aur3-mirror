pkgname=python3-dateutil
pkgver=1.5
pkgrel=4
pkgdesc="Provides powerful extensions to the standard datetime module, 2to3'd"
arch=('any')
license=('PYTHON')
url="http://labix.org/python-dateutil"
depends=('python' 'python2')
source=(http://labix.org/download/python-dateutil/python-dateutil-$pkgver.tar.gz)
md5sums=('35f3732db3f2cc4afdc68a8533b60a52')
makedepends=('python-distribute')

build() {
    cd $srcdir/python-dateutil-$pkgver
    for file in ./*.py; do 
        2to3 -w -n $file
    done
    for file in ./dateutil/*.py; do 
        2to3 -w -n $file
    done
    for file in ./sandbox/*.py; do 
        2to3 -w -n $file
    done
    python setup.py install --root=$pkgdir
    install -Dm644 LICENSE \
      $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
