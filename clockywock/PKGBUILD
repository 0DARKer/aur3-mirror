# Contributor: Kyle Keen <keenerd@gmail.com>
pkgname=clockywock
pkgver=0.2.3E
pkgrel=1
pkgdesc="Analog clock, with alarm and color, for command line."
arch=('i686' 'x86_64')
url="http://soomka.com/"
license=('GPL')
depends=('ncurses')
makedepends=()
source=(http://soomka.com/$pkgname-$pkgver.tar.gz)
md5sums=('5e7fbb39bbafa5a439d07d6b9a28c1b7')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  sed -i 's/timex/&2/g' clockywock.cpp  # name clash
  make
  mkdir -p "$pkgdir"/usr/bin/
  cp clockywock "$pkgdir"/usr/bin/
}


