# Contributor: Kyle Keen <keenerd@gmail.com>
pkgname=clockywock
pkgver=0.2.3F
pkgrel=1
pkgdesc="Analog clock, with alarm and color, for command line."
arch=('i686' 'x86_64')
url="http://soomka.com/"
license=('GPL')
depends=('ncurses')
makedepends=()
#source=(http://soomka.com/$pkgname-$pkgver.tar.gz)  page down?
source=(http://ftp.uni-erlangen.de/pub/mirrors/gentoo/distfiles/$pkgname-$pkgver.tar.gz)
md5sums=('2f3043feda5c072457e74063c2ad5dcc')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  sed -i 's/timex/&2/g' clockywock.cpp  # name clash
  make
  mkdir -p "$pkgdir"/usr/bin/
  cp clockywock "$pkgdir"/usr/bin/
}


