# Contributor: Daniel Milde <info@milde.cz>

pkgname=deditor
pkgver=0.2.2
pkgrel=1
pkgdesc="The editor that boosts your python development"
url="https://launchpad.net/deditor"
license=(GPL)
arch=('i686' 'x86_64')
depends=('python2' 'wxpython')
source=('http://launchpad.net/deditor/0.x/0.2.2/+download/deditor-0.2.2.tar.gz' 
        'deditor.desktop' 
        'deditor.sh')
md5sums=('1d754674e6a9c26e06bb268fe7688290'
         '90fb088dcb04194273428e67226fda2e'
         '22a730764194046734749a954dcfbd4f')

build() {
	cd $srcdir/$pkgname-$pkgver
	
	install -D -m755 ./deditor.py ${pkgdir}/usr/share/deditor/deditor.py
	install -D ./deditorstc.py ${pkgdir}/usr/share/deditor/deditorstc.py
	install -D ./configuration.ded ${pkgdir}/usr/share/deditor/configuration.ded
	install -D ./logo.gif ${pkgdir}/usr/share/deditor/logo.gif
	install -D ./projects.ded ${pkgdir}/usr/share/deditor/projects.ded
	
	install -D ./logo.gif ${pkgdir}/usr/share/pixmaps/${pkgname}.gif
	install -D ${srcdir}/deditor.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
	
	install -D -m755 ${srcdir}/deditor.sh ${pkgdir}/usr/bin/${pkgname}

	sed -i 's/env python/python2/' ${pkgdir}/usr/share/deditor/deditor.py
}
