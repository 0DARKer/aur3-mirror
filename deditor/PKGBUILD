# Contributor: Daniel Milde <info@milde.cz>

pkgname=deditor
pkgver=0.2.5
pkgrel=1
pkgdesc="The editor that boosts your python development"
url="https://launchpad.net/deditor"
license=(GPL)
arch=('i686' 'x86_64')
depends=('python2' 'wxpython')
source=(http://launchpad.net/deditor/0.x/${pkgver}/+download/deditor-${pkgver}.deb
        'deditor.desktop'
        'deditor.sh')
md5sums=('78a4e9edfd05eb0214704670468ed5f9'
         '90fb088dcb04194273428e67226fda2e'
         '22a730764194046734749a954dcfbd4f')

build() {
	cd ${srcdir}
	ar x deditor-${pkgver}.deb
	tar xzf data.tar.gz

	mv ./usr ${pkgdir}
	chmod -R 755 ${pkgdir}

	install -D -m755 ${srcdir}/deditor.sh ${pkgdir}/usr/bin/${pkgname}

	sed -i 's/env python/python2/' ${pkgdir}/usr/share/deditor/deditor.py
}
