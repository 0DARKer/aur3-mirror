# Author: James Halliday <mail@substack.net> (http://substack.net)
# Maintainer: substack <mail@substack.net>
_npmname=browserify
pkgname=nodejs-browserify # All lowercase
pkgver=1.14.3
pkgrel=1
pkgdesc="browser-side require() for js directories and npm modules"
arch=(any)
url="http://github.com/substack/node-browserify"
license=()
depends=(nodejs)
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(574805c47c4ab707e657accc4858a103d296b448)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
# vim:set ts=2 sw=2 et: