## Contributor: Alexander Fehr <pizzapunk gmail com>

pkgname=xmms2-scrobbler
pkgver=0.4.0
pkgrel=4
pkgdesc="Audioscrobbler client for XMMS2"
arch=('i686' 'x86_64')
url="http://code-monkey.de/pages/xmms2-scrobbler"
license=('MIT')
depends=(curl xmms2)
install=install.sh
source=(ftp://ftp.code-monkey.de/pub/$pkgname/$pkgname-$pkgver.tar.gz
        install.sh)
md5sums=('f5be15c90cf7c60209031b8968f77b19'
         '0383eb98fa96f23ca2491a961955acf2')

build() {
    unset LDFLAGS
    cd "$srcdir/$pkgname-$pkgver"

    make CURL_LDFLAGS+=-lcurl || return 1
    make install DESTDIR="$pkgdir/" PREFIX=/usr
    install --mode=0644 -D COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
    install --mode=0644 -D README "$pkgdir/usr/share/doc/$pkgname/README"
}

