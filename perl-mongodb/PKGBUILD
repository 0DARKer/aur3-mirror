options=('!emptydirs')
depends=('perl>=5.8.4' 'perl-boolean' 'perl-class-method-modifiers' 'perl-data-types' 'perl-datetime' 'perl-datetime-tiny' 'perl-file-slurp' 'perl-json' 'perl-module-install' 'perl-moose' 'perl-tie-ixhash' 'perl-try-tiny')
makedepends=('perl-test-exception' 'perl-test-warn')
