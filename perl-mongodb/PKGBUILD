pkgname='perl-mongodb'
pkgver='0.700.0'
pkgrel='1'
pkgdesc="A Mongo Driver for Perl"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.8.4' 'perl-boolean' 'perl-class-method-modifiers' 'perl-data-dump' 'perl-data-types' 'perl-datetime' 'perl-datetime-tiny' 'perl-file-slurp' 'perl-json' 'perl-module-install' 'perl-moose' 'perl-tie-ixhash' 'perl-try-tiny')
makedepends=('perl-test-exception' 'perl-test-warn')
url='http://search.cpan.org/dist/MongoDB'
source=('http://search.cpan.org/CPAN/authors/id/F/FR/FRIEDO/MongoDB-0.700.0.tar.gz')
md5sums=('6756b8aafb4b5926a4b0dcdf64758f52')
sha512sums=('c6c29adaf195b6f95a32499be5c5d68b5fc574b47dcaecdbb6c5bce36d1f51f27c37508953dbf6d627f5732f03ecfae314b04c3707c6983d0f2c255891103dc1')
_distdir="MongoDB-0.700.0"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

