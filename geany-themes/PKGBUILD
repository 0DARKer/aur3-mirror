# Contributor: Sagar Chalise <chalisesagar@gmail.com>

pkgname=geany-themes
pkgver=0.21
pkgrel=2
pkgdesc="A collection of color schemes for Geany."
arch=('any')
url='http://codebrainz.github.com/geany-themes/'
license=('GPL')
depends=('geany')
source=("https://github.com/downloads/codebrainz/geany-themes/geany-themes-${pkgver}.tar.bz2")
md5sums=('fab1257a87aa695713c4177d5df49946')

build() {
  cd "${srcdir}"
  # alt.conf already exists in Geany package
  rm -f geany-themes-${pkgver}/colorschemes/alt.conf
}

package() {
  cd "${srcdir}"
  install -dm755 ${pkgdir}/usr/share/geany/colorschemes
  install -dm755 ${pkgdir}/usr/share/geany/filedefs
  install -D -m644 geany-themes-${pkgver}/colorschemes/* "${pkgdir}/usr/share/geany/colorschemes/"
  install -D -m644 geany-themes-${pkgver}/filedefs/* "${pkgdir}/usr/share/geany/filedefs/"
}
