# Maintainer: winlu

pkgname=shairplay-git
pkgver=20140506
pkgrel=1
pkgdesc="provides libshairplay and shairplay from git"
arch=('i686' 'x86_64')
url="https://github.com/juhovh/shairplay"
license=('GPLv3')
depends=('libao' 'avahi')
makedepends=('git')



_gitroot="https://github.com/juhovh/shairplay"
_gitname="shairplay"

build() {
    msg "Connecting to github GIT server..."

    if [ -d $_gitname ]; then
        cd $_gitname && git pull origin
    else
        git clone "$_gitroot"
    fi

    cd $_gitname
    ./autogen.sh
    ./configure --prefix=/usr
    make
}

package(){
    cd $srcdir/$_gitname/
    make DESTDIR="$pkgdir/" install
}

