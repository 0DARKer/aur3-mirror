# Contributor: rabyte <rabyte__gmail>

pkgname=jsidplay2
pkgver=1.4
pkgrel=1
pkgdesc="A Java implementation of the sidplay2 SID file player/emulator"
arch=('any')
url="http://$pkgname.sourceforge.net/"
license=('LGPL2')
depends=('jre')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.jar \
	$pkgname.sh)
noextract=($pkgname-$pkgver.jar)
md5sums=('746c3ffd98a39a97c905936e7c69db57'
         'b27a64a77b2eef09a85ee457ee7ee21b')

build() {
  cd $srcdir

  install -m644 -D $pkgname-$pkgver.jar $pkgdir/usr/share/$pkgname/$pkgname.jar
  install -m755 -D $pkgname.sh $pkgdir/usr/bin/$pkgname
}

# vim:set ts=2 sw=2 et:
