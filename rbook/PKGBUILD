pkgname=rbook
pkgver=0.1.0
pkgrel=1
pkgdesc='A simple PDF document manager'
arch=('any')
url='https://github.com/rk700/rbook'
license=('GPL3')
depends=('python2' 'wxpython' 'python2-poppler')
source=("https://github.com/downloads/rk700/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('8e49c13a7e1f217d8a5ab863376b1016')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	sed -i 's|/usr/bin/env python|/usr/bin/env python2|' bin/rbook

	python2 setup.py build
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	python2 setup.py install --prefix=/usr --root="${pkgdir}" --skip-build -O2
}
