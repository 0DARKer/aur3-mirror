# Maintainer: Rolinh <robinDOThahlingATgw-computingDOTnet>

pkgname=ghmd
pkgver=1.0.1
pkgrel=1
pkgdesc="command line tool that can render GitHub Markdown files to HTML"
arch=('x86_64' 'i686')
url="https://github.com/gilliek/ghmd"
license=('BEERWARE')
depends=('go')
source=(https://github.com/gilliek/${pkgname}/archive/${pkgver}.tar.gz)
md5sums=('32fbd02ccad1550f312936d9227d056f')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  go build -o ${pkgname}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  install -Dm755 ${pkgname} "${pkgdir}/usr/bin/${pkgname}"

  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
