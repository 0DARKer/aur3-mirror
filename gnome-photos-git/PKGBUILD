# Maintainer: Yosef Or Boczko <yoseforb@gmail.com>

_pkgname=gnome-photos
pkgname=$_pkgname-git
pkgver=3.9.5.1
pkgrel=1
pkgdesc="Photos - access, organize and share your photos on GNOME"
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL2')
depends=('gtk3>=3.9.10' 'tracker' 'gegl' 'gnome-online-accounts' 'exempi' 'libexif' 'librsvg')
makedepends=('git' 'gnome-common' 'intltool')
optdepends=()
provides=('gnome-photos' 'gnome-photos=3.9.5.1')
conflicts=('gnome-photos')
source=('git://git.gnome.org/gnome-photos')
sha256sums=('SKIP')
install=gnome-photos.install

pkgver() {
    cd "$srcdir/$_pkgname"
    git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/gnome-photos"
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir/gnome-photos"
  make DESTDIR="$pkgdir/" install
}

