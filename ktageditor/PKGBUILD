#Maintainer: Kočmaroš Karolj <karlosmunjos at gmail dot com>

pkgname=ktageditor
pkgver=0.2.0
pkgrel=1
pkgdesc="KTag Editor is a free and open source Audio tag editor developed in Qt5 framework."
arch=('i686' 'x86_64')
url="http://karoljkocmaros.blogspot.com/p/ktag-editor.html"
license=('LGPL')
install=${pkgname}.install
makedepends=('taglib' 'phonon-qt5')
depends=('qt5-base>=5.1.1' 'taglib>=1.8' 'phonon-qt5')
optdepends=('phonon-qt5-vlc: for audio output' 'phonon-qt5-gstreamer: audio output')
source=('http://master.dl.sourceforge.net/project/ktageditor/source/${pkgver}/ktageditor.zip')
sha256sums=('716d34c509172c8b8a98a1444f3a2b055579005a642132781403c365ec673a8e')

build() 
{
    cd $srcdir/trunk
    qmake || return 1
    make || return 1    
}

package()
{
    cd $srcdir/trunk
    make INSTALL_ROOT="${pkgdir}" install
}
