#Maintainer: Kočmaroš Karolj <karlosmunjos at gmail dot com>

pkgname=ktageditor
pkgver=0.0.1
pkgrel=1
pkgdesc="KTag Editor is a free open source ID3v tag editor developed in Qt5 framework."
arch=('i686' 'x86_64')
url="http://www.raskovsoft.com/ktageditor"
license=('LGPL')
install=${pkgname}.install
depends=('qt5-base>=5.1.1' 'qt5-multimedia>=5.1.1' 'taglib>=1.8')
source=('http://heanet.dl.sourceforge.net/project/ktageditor/Source/${pkgver}/ktageditor.zip')
sha256sums=('21d3091542a44311142ecd7bf3609883a86a7678b1b3665ce9ebacfb23dbd4dc')

build() 
{
    cd $srcdir/trunk
    qmake || return 1
    make || return 1    
}

package()
{
    cd $srcdir/trunk
    make INSTALL_ROOT="${pkgdir}" install
}
