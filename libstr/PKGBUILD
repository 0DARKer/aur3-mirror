#Maintainer theNerd247 <noah.harvey247@gmail.com>

pkgname=libstr
pkgver=0.0.1
pkgrel=1
pkgdesc="An extension library for C standard string.h"
arch=('i686' 'x86_64')
url=https://www.github.com/theNerd247/libstr
license=('GPL')
source=("https://github.com/theNerd247/libstr/raw/master/$pkgname-$pkgver.tar.gz")
depends=('glibc')
md5sums=('f7dd13660631447dae43f16ddd3e904b')

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
