pkgname=pacnotify
pkgver=0.8
pkgrel=1
pkgdesc="A script to look for updates and display them via libnotify."
arch=(any)
url="https://code.google.com/p/$pkgname/"
license=('GPL3')
depends=(libnotify)
source=("https://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha256sums=('5d1e697435b2053035b4b953c6f2bb6be4cc47d064d12916367c728c6ff4094f')
package() {
	cd $srcdir/$pkgname
	make DESTDIR=${pkgdir} install
}
