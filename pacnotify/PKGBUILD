pkgname=pacnotify
pkgver=0.7
pkgrel=2
pkgdesc="A script to look for updates and display them via libnotify."
arch=(any)
url="https://code.google.com/p/$pkgname/"
license=('GPL3')
depends=(libnotify)
source=("https://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha256sums=('329a4d8e0f219f94a1e82f2678c20d5a6f0ab145ab4db5024b7a6c1ba89e03e6')
package() {
	cd $srcdir/$pkgname
	make DESTDIR=${pkgdir} install
}
