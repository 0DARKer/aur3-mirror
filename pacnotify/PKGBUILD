pkgname=pacnotify
pkgver=0.9
pkgrel=1
pkgdesc="A script to look for updates and display them via libnotify."
arch=(any)
url="https://code.google.com/p/$pkgname/"
license=('GPL3')
depends=(libnotify)
source=("https://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha256sums=('8cf39a82b59b00f5059416b48a26bddbf9f7bae33659cdad16090afc62827adc')
package() {
	cd $srcdir/$pkgname
	make DESTDIR=${pkgdir} install
}
