pkgname=pacnotify
pkgver=0.9
pkgrel=2
pkgdesc="A script to look for updates and display them via libnotify."
arch=(any)
url="https://code.google.com/p/$pkgname/"
license=('GPL3')
depends=(libnotify)
source=("https://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha256sums=('a450ac45cd68e60fb092d3b21d50794bb12bdd1c8d52bb64c88a9ea38497f495')
package() {
	cd $srcdir/$pkgname
	make DESTDIR=${pkgdir} install
}
