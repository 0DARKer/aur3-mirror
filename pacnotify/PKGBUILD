pkgname=pacnotify
pkgver=0.10
pkgrel=1
pkgdesc="A script to look for updates and display them via libnotify."
arch=(any)
url="https://code.google.com/p/$pkgname/"
license=('GPL3')
depends=(libnotify)
source=("https://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha256sums=('ed0a856e9c13e0bf95f5aa44c2269423358efe0029cf6616a2d3fcf628f993d9')
package() {
	cd $srcdir/$pkgname
	make DESTDIR=${pkgdir} install
}
