pkgname=pacnotify
pkgver=0.7
pkgrel=1
pkgdesc="A script to look for updates and display them via libnotify."
arch=(any)
url="https://code.google.com/p/pacnotify/"
license=('GPL3')
depends=(libnotify)
source=(https://pacnotify.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=(67cb60901b1c7163a04f0f04cafc33a9)

package() {
	cd $srcdir/$pkgname
	make DESTDIR=${pkgdir} install
}
