pkgname=vim-singlecompile
pkgver=2.12.0
pkgrel=4
pkgdesc="Vim plugin for compiling code without the need to exit vim"
license=('GPL')
depends=('vim')
makedepends=('wget')
url="http://www.vim.org/scripts/script.php?script_id=3115"
source=("https://github.com/xuhdev/SingleCompile")
arch=('any')
provides=('vim-singlecompile')
sha512sums=('SKIP')
package()
{
	echo "For this to work you need to have .vim dir inside your home directory."
	wget --content-disposition "http://www.vim.org/scripts/download_script.php?src_id=22022"
	bsdtar -xf SingleCompile-${pkgver}.zip
	cp -r autoload/ ~/.vim/
	cp -r doc/ ~/.vim/
	cp -r plugin/ ~/.vim/
	rm -rf autoload/ doc/ plugin/
}
