# Maintainer: Stefano Facchini <stefano.facchini@gmail.com>
pkgname=libusb-testing
pkgver=1.0.9_rc3
_dirname=libusb-f07a4a7
pkgrel=1
depends=('glibc')
pkgdesc="Library to enable user space application programs to communicate with USB devices."
arch=(i686 x86_64)
url="http://libusb.sourceforge.net/"
license=('LGPL')
source=("http://git.libusb.org/?p=libusb.git;a=snapshot;h=f07a4a78533b44d124dfe06cbf42afa7fb267359;sf=tbz2;js=1")
options=(!libtool)
provides=(libusb=1.0.9)
conflicts=(libusb)
md5sums=('26abbce8ddb945899ee6e16fa92928f8')

build() {
  cd "$srcdir/$_dirname"
  ./autogen.sh --prefix=/usr 
  make
}

package () {
  cd "$srcdir/$_dirname"
  make DESTDIR="$pkgdir" install
}
