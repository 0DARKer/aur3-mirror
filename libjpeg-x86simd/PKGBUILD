# Contributor: unacowa <ueki.com@gmail.com>

pkgname=libjpeg-x86simd
pkgver=1.02
pkgrel=1
pkgdesc="Library of JPEG support functions with x86 SIMD extension"
arch=('i686')
url="http://cetus.sakura.ne.jp/softlab/jpeg-x86simd/jpegsimd.html"
license="same as libjpeg"
depends=('glibc')
makedepends=('gcc' 'nasm')
provides=('libjpeg')
conflicts=('libjpeg')
source=(http://cetus.sakura.ne.jp/softlab/jpeg-x86simd/sources/jpegsrc-6b-x86simd-$pkgver.tar.gz)
md5sums=('958553fc05fec33189333b48292db66d')

build() {
  cd $startdir/src/jpeg-6bx
  ./configure --prefix=/usr --enable-shared --enable-static
  make || return 1
  mkdir -p $startdir/pkg/usr/{bin,lib,include,man/man1}
  make prefix=$startdir/pkg/usr install

  find $startdir/pkg -name '*.la' -exec rm {} \;
}
