# Maintainer: Phillipe Smith <phillipe@archlinux.com.br>
pkgname=mediabox
pkgver=2.50
pkgrel=1
pkgdesc="GST mediaBox is a lightweight GTK+ media player, using GStreamer."
arch=('i686' 'x86_64')
url="http://opendesktop.org/content/show.php/GST+MediaBox?content=148830"
license=('GPL')
depends=('gtk2' 'libglade' 'dbus' 'dbus-python' 'python2' 'pyxdg' 'pygtk' 'python-rsvg' 'python-imaging' 'python-notify' 'cddb-py' 'mutagen')
optdepends=('gstreamer0.10-plugins: GStreamer Multimedia Plugins'
            'gstreamer0.10-python: Python bindings for GStreamer 0.10')
source=("http://opendesktop.org/CONTENT/content-files/148830-${pkgname}_${pkgver}-${pkgrel}~mickyz.deb")
md5sums=('d0c93af4a8051096f8fc81d7ce5a44a6')

build() {  
  tar -zxf $srcdir/data.tar.gz  
}

package() {  
  cp -r $srcdir/usr/ $pkgdir  
  install -Dm 755 ${pkgdir}/usr/share/${pkgname}/pix/app48.png ${pkgdir}/usr/share/pixmaps/${pkgname}.png
  sed 's/python/python2/' -i ${pkgdir}/usr/bin/${pkgname}
  sed 's/python/python2/' -i ${pkgdir}/usr/bin/${pkgname}-remote  
}
