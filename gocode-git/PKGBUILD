# Contributor: Daniel Micay <danielmicay@gmail.com>
# Contributor: Dave Reisner <d@falconindy.com>

pkgname=gocode-git
pkgver=20120213
pkgrel=1
pkgdesc="An autocompletion/refactoring daemon for the Go programming language (for use in Vim)"
arch=(i686 x86_64)
url="http://github.com/nsf/gocode"
license=('GPL')
depends=('go-hg')
provides=('gocode')
conflicts=('gocode')
makedepends=('git')

# Extra underscore to stop the automatic pkgver update
__gitroot="https://github.com/nsf/gocode.git"
__gitname="gocode"

build() {
  cd "$srcdir"

  msg "Connecting to GIT server...."
  if [[ -d $__gitname.git ]] ; then
    ( cd "$__gitname.git" && git pull origin; )
    msg "The local files are updated."
  else
    git clone "$__gitroot" "$__gitname.git"
  fi
  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  # use extra src path to let 'go' tool happy
  rm -rf $srcdir/src
  mkdir -p $srcdir/src
  git clone "$__gitname.git" "$srcdir/src/$__gitname"
  cd "$srcdir/src/$__gitname"
  GOPATH=$srcdir go install
}

package() {
  cd "$srcdir/bin"
  install -Dm755 gocode "$pkgdir/usr/bin/gocode"
  cd "$srcdir/src/gocode"
  install -Dm644 vim/autoload/gocomplete.vim "$pkgdir/usr/share/vim/vimfiles/autoload/gocomplete.vim"
  install -Dm644 vim/ftplugin/go.vim "$pkgdir/usr/share/vim/vimfiles/ftplugin/go.vim"
  install -Dm644 emacs/go-autocomplete.el "$pkgdir/usr/share/emacs/site-lisp/go-autocomplete.el"
}
