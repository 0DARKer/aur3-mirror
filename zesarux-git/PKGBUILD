# Maintainer: Alfonso Saavedra "Son Link" <sonlink.dourden@gmail.com>

pkgname=zesarux-git

pkgver=r1185.4c7dbe7
pkgrel=1
pkgdesc="A Zx80/81 and Zx Spectrum 16/48/128/+2/+2A emulator. WARNING. This is a Snapshot version and not a stable one. Some features may not work or suffer random crashes or abnormal CPU use"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/zesarux/"
license=('GPL3')
conflicts=('zesarux')
optdepends=('pulseaudio: for support Pulseaudio'
	'openssl: for enable SSL functions')
	
source=('zesarux-code::git+git://git.code.sf.net/p/zesarux/code')
md5sums=('SKIP')

pkgver() {
  	cd "$srcdir/zesarux-code"
  	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/zesarux-code"
	./configure --prefix=/${pkgdir}/usr --disable-caca --disable-aa
	make
}
package(){
	if [  ! -d "${pkgdir}/usr" ]; then
		mkdir "${pkgdir}/usr"
	fi
	cd ${srcdir}/zesarux-code
	make  DESTDIR="${pkgdir}" install
}
