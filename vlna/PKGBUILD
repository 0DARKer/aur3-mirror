pkgname=vlna
pkgver=1.2
pkgrel=1
pkgdesc="Vlna for TeX and LaTeX."
url="http://ftp.linux.cz/pub/tex/local/cstug/olsak/vlna"
license=""
depends=(tetex)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(ftp://ftp.linux.cz/pub/tex/local/cstug/olsak/vlna/$pkgname-$pkgver.tar.gz)
md5sums=('1c29aae1077d4603d234bf2534a6a019')

build() {
  cd $startdir/src/$pkgname
  make || return 1
  make DESTDIR=$startdir/pkg/usr install
}