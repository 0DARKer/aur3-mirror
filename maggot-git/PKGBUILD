# Maintainer: Gonzalo Ciruelos <comp.gonzalo@gmail.com> 

pkgname=maggot-git
_gitname=maggot
pkgver=0.0.3
pkgrel=1
pkgdesc="A simple snake game written in C"
arch=('i686' 'x86_64')
url="https://github.com/falziots/maggot"
license=('GPL2')
depends=('glibc')
makedepends=('git')
source=('git://github.com/falziots/maggot.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git tag
}

build() {
  cd $_gitname
  make
}

package() {
  cd $_gitname
  install -Dm755 $_gitname "$pkgdir/usr/bin/$_gitname"
}
