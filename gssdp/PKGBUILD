# Contributor: William Diaz <wdiaz@archlinux.us>

pkgname=gssdp
pkgver=0.8.0
pkgrel=1
pkgdesc="GSSDP implements resource discovery and announcement over SSDP"
arch=('i686' 'x86_64')
url="http://gupnp.org/"
license=('LGPL')
depends=('libsoup>=2.32.0' 'gtk2>=2.22.0')
makedepends=('gobject-introspection>=0.9.10')
options=('!libtool')
source=(http://gupnp.org/sites/all/files/sources/${pkgname}-${pkgver}.tar.gz)
md5sums=('a4cf85650decaec7a12382a8a002bc83')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr \
      --disable-static \
      --disable-gtk-doc \
      --with-gtk

  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
