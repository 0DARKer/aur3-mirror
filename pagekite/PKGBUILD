# Maintainer: victor.vde@gmail.com

pkgname=pagekite
pkgver=0.3.13
pkgrel=1
pkgdesc="implementation the pageKite remote web front-end protocol"
arch=(any)
url="http://pagekite.net/"
license=('custom:AGPL')
depends=('python2')
source=(http://pagekite.net/pk/pagekite.py http://www.gnu.org/licenses/agpl-3.0.txt)
md5sums=('f5bd5cd9a6c9e5b7459ec2e32daa3757' '73f1eb20517c55bf9493b7dd6e480788')

build() {
	cd "${srcdir}"
	sed -i pagekite.py -e 1s/python/python2/
}

package() {
	install -D "${srcdir}/pagekite.py" "${pkgdir}/usr/bin/pagekite.py"
	install -D -m644 "${srcdir}/agpl-3.0.txt" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
