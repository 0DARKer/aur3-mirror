pkgname=pacleaner
pkgver=0.3.2
pkgrel=1
pkgdesc="Python script that's cleaning up pacman's cache"
url='http://folk.ntnu.no/havarnov/python/pacleaner.py'
arch=(any)
depends=('python')
source=(http://folk.ntnu.no/havarnov/python/pacleaner.py)
md5sums=('2cc136d5259eae5aa124ef19342638a0')
license=('GPL')

build() {
  cd "${srcdir}/"

  mkdir -p  ${startdir}/pkg/usr/bin/

  install -m 755 ${srcdir}/pacleaner.py ${startdir}/pkg/usr/bin/pacleaner.py

}


