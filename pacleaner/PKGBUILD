pkgname=pacleaner
pkgver=1.9
pkgrel=3
pkgdesc="Script to clean up pacmans cache in a more flexible way than pacman -Sc[c]."
arch=(i686 x86_64)
depends=('python')
#install=${pkgname}.install
url=(https://github.com/havarnov/pacleaner)
source=(https://raw.github.com/havarnov/pacleaner/master/pacleaner.py)
md5sums=('32db32c5c87bbffe5078f6d13e76e7dd')
license=('GPL')

build(){

mkdir "${pkgdir}"/usr
mkdir "${pkgdir}"/usr/bin
cp "${srcdir}"/"${pkgname}".py "${pkgdir}"/usr/bin/"${pkgname}"
chmod +x "${pkgdir}"/usr/bin/"${pkgname}"

}