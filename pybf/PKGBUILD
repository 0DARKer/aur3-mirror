pkgname="pybf"
pkgver=0.2
pkgrel=1
pkgdesc="A brainfsck iterpreter written in Python"
arch=("any")
url="http://code.google.com/p/pybf"
license=("GPL3")
depends=("python2")
makedepends=("mercurial")

build() {
	cd "$srcdir/"

	hg clone http://pybf.googlecode.com/hg/ "$pkgname-$pkgver"
	
	cd "$pkgname-$pkgver/"

	#make

	#./configure --prefix=/usr
	#make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/"

  make DESTDIR="$pkgdir/" install
}
