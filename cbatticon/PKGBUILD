pkgname=cbatticon
pkgver=1.0
pkgrel=2
pkgdesc="A lightweight GTK+ battery status icon written in C"
arch=(i686 x86_64 arm)
url="http://ergoeclectic.com/projects/cbatticon.html"
license=('GPL2')
depends=('libnotify' 'gtk2')
makedepends=('make' 'gcc')
provides=('cbatticon')
conflicts=('cbatticon-git')
source=(https://github.com/ColinJones/$pkgname/archive/$pkgver.tar.gz)
md5sums=('278593dfd8a9c228d9876d1049faf1c8')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX="$pkgdir/usr" install
}
