pkgname=hfsutils
pkgver=3.2.6
pkgrel=2
pkgdesc="A variety of tools originally developed for managing HFS filesystems"
arch=(i686 x86_64)
url="http://www.mars.org/home/rob/proj/hfs/"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
install=
source=(ftp://ftp.mars.org/pub/hfs/$pkgname-$pkgver.tar.gz
        Makefile-install.patch)
md5sums=('fa572afd6da969e25c1455f728750ec4'
         'c368cf95d35d95a77f2769c979f0dd23')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np0 -i "${srcdir}/Makefile-install.patch" || return 1
  ./configure --prefix=/usr --mandir=/usr/share/man --without-tcl --without-tk
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  msg "Installing to ${pkgdir}"
  make prefix="$pkgdir/usr" MANDEST="$pkgdir/usr/share/man" install
}

# vim:set ts=2 sw=2 et:
