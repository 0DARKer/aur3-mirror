pkgname=lsgrp
pkgver=2012.12
pkgrel=1
pkgdesc='A simple command-line utility to list all members of a group.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/lsgrp"
source=(
  http://xyne.archlinux.ca/projects/lsgrp/src/lsgrp-2012.12.tar.xz
  http://xyne.archlinux.ca/projects/lsgrp/src/lsgrp-2012.12.tar.xz.sig
)
sha512sums=(
  81b1024364f3ed33c97df274ab88fc8adddc1cc441fc545940ec77925499002e87d6506d66bf17d73bbd3bd1ad00e1ac47945ac93c2de57897137d03ac05f462
  10460cc11c0c771c58a102d67930db56bb67af78cb09ac921254811fd38ac6ca1425132b1beb0c02ff40df71e1376ea2814ec45755aa6152cd33e0cfd0000c23
)
md5sums=(
  67a7efdde084499ed1c334c996da65a7
  1b87a913e55dab15abfaf47477819fff
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
}

