pkgname=nodejs-connect
pkgver=2.7.2
pkgrel=1
pkgdesc="High performance middleware framework"
url="https://github.com/senchalabs/connect/"
arch=('any')
license=('MIT')
depends=('nodejs')
source=("http://registry.npmjs.org/connect/-/connect-2.7.2.tgz")
sha1sums=('11799463bdaaaf99d5f9bef133bf2420b26e2680')
noextract=("connect-2.7.2.tgz")

package() {
    mkdir -p "${pkgdir}/usr"
    npm install "connect-2.7.2.tgz" -g --prefix="${pkgdir}/usr"
}
