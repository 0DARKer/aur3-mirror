# Maintainer: ngukho <ngukho at gmail dot com>
pkgname=crfsuite
pkgver=0.10
pkgrel=1
pkgdesc="An implementation of Conditional Random Fields (CRFs) for labeling sequential data."
arch=('i686' 'x86_64')
url="http://www.chokkan.org/software/crfsuite/"
license=('custom:BSD')
depends=('liblbfgs')
source=("http://www.chokkan.org/software/dist/$pkgname-$pkgver.tar.gz")
md5sums=('63da02c7b38190e62b4babf072cfe56d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install

  install -D -m644 COPYING $pkgdir/usr/share/licenses/crfsuite/COPYING
}

# vim:set ts=2 sw=2 et:
