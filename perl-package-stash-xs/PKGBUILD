#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-package-stash-xs'
_pkgname='Package-Stash-XS'
pkgver='0.22'
pkgrel='1'
pkgdesc="faster and more correct implementation of the Package::Stash API"
arch=(i686 x86_64)
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-test-simple' 'perl-test-fatal' 'perl-test-requires')
url='http://search.cpan.org/dist/Package-Stash-XS/'
source=(http://search.cpan.org/CPAN/authors/id/D/DO/DOY/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('f69c97276b3e00f3710db383e0bd4f5dcacec3760264d0927f409c80cea928ec')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1

  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1

  [ "$skiptest" = "1" ] || make test || return 1

  make DESTDIR="${pkgdir}" install || return 1

  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
