# Contributor: SiD/sidious <miste7@web.de>

pkgname=slim-theme-burning-arch
pkgver=1.0
pkgrel=2
pkgdesc="Slim theme for ArchLinux"
license=('custom')
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/slimburningarch/"
depends=('slim')
install=burning-arch.install
source=(http://sourceforge.net/projects/slimburningarch/files/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('2c7444637b2ad05ac28470ea0419b3a1')

build() {
  cd $startdir/src/$pkgname-$pkgver
  
  install -m 644 -D background.png $startdir/pkg/usr/share/slim/themes/burning-arch/background.png
  install -m 644 -D panel.png $startdir/pkg/usr/share/slim/themes/burning-arch/panel.png
  install -m 644 -D slim.theme $startdir/pkg/usr/share/slim/themes/burning-arch/slim.theme

  install -m 755 -d $startdir/pkg/usr/share/licenses/$pkgname
  install -m 644 -D LICENSE $startdir/pkg/usr/share/licenses/$pkgname/
}
