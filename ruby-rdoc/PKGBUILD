# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rdoc
gemname=rdoc
pkgver=3.4
pkgrel=1
pkgdesc="Is produces HTML and command-line documentation for Ruby projects."
arch=(any)
url="http://docs.seattlerb.org/rdoc"
license=('MIT')
depends=('ruby')
makedepends=(rubygems)
source=(http://rubygems.org/downloads/${gemname}-${pkgver}.gem)
noextract=(${gemname}-${pkgver}.gem)
md5sums=('4459caa09d4c53e22071b92a7d77d4b4')

build() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${gemname}-${pkgver}.gem
}
