# Maintainer: Spike29 <leguen.yannick@gmail.com>
# Contributor: Petr Malat <petris@penguin.cz> 

pkgname='tong'
pkgver='1.2'
pkgrel='3'
pkgdesc="The result of mixing Tetris and Pong classic games"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/tong/"
license=('GPL3')
depends=('sdl_image' 'sdl_mixer')
source=(http://www.nongnu.org/tong/$pkgname-$pkgver.tar.gz)
md5sums=('1456c03d24d5c3d0de039ecd7dac0264')

build() {
	cd $srcdir/$pkgname
	make GAME_DATA_DIR=/usr/share/tong
}

package() {
	mkdir -p $pkgdir/usr/share/$pkgname
	mkdir -p $pkgdir/usr/bin
	cd $srcdir/$pkgname
	cp -r media $pkgdir/usr/share/$pkgname
	install -Dm644 CREDITS $pkgdir/usr/share/$pkgname/CREDITS
	install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
