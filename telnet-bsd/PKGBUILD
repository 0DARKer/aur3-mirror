# Contributor: Baptiste Daroussin <baptiste.daroussin@gmail.com>
pkgname=telnet-bsd
pkgver=1.2
pkgrel=1
pkgdesc="Telnet and telnetd ported from OpenBSD"
arch=("i686" "x86_64")
url="ftp://ftp.suse.com/pub/people/kukuk/ipv6/"
license=('BSD')
depends=('ncurses')
conflicts=("netkit-telnet")
source=(ftp://ftp.suse.com/pub/people/kukuk/ipv6/$pkgname-$pkgver.tar.bz2 telnet.xinetd)
md5sums=('72d72c65e7796dfec999f347da1c295f' 'c6e6ca4ba8e084be8ce2a170bebc17cc')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install 
  install -D -m644 $startdir/src/telnet.xinetd $startdir/pkg/etc/xinetd.d/telnet
  chown -R root:root $startdir/pkg/
}
