pkgname=python2-rhodecode
_pkgname=RhodeCode
pkgver=1.5.1
pkgrel=1
pkgdesc="Open source control management system for Mercurial and GIT with code-reviews"
url="http://rhodecode.org"
arch=('any')
license=('GPL3')
depends=( 'python2' 'mercurial' 'pylons' 'python-paste' 'git')
optdepends=('python-celery')
source=(http://pypi.python.org/packages/source/R/$_pkgname/RhodeCode-$pkgver.tar.gz)

build() {
  cd $srcdir/src/$_pkgname-$pkgver
  python2 setup.py install --root=${pkgdir} --optimize=1
}

md5sums=('086cf19b25a15b3d518551d6351fc03e')
