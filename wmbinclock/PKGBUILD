# Comments: 
# Binary version available from: http://www.quadronyx.org/aur/
##

pkgname=wmbinclock
pkgver=0.5
pkgrel=2
pkgdesc="A dockable WindowMaker app (docklet) binary clock."
arch=('i686')
url="http://wmbinclock.sourceforge.net/" 
license=('GPL')
depends=( \
	libxpm \
	)
source=( \
	http://dl.sourceforge.net/wmbinclock/${pkgname}-${pkgver}.tar.bz2 \
	)
md5sums=( \
	'ba268e66b59b100edb9da1cee064c258' \
	)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make || exit 1
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	mkdir -p "${pkgdir}/usr/bin" || exit 1

	make DESTDIR="${pkgdir}/usr" install || exit 1
}
