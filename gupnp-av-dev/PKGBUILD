pkgname=gupnp-av-dev
_pkgname=gupnp-av
pkgver=0.7.1
pkgrel=1
pkgdesc="A small utility library that aims to ease the handling and implementation of UPnP A/V profiles"
arch=('i686' 'x86_64')
url="http://www.gupnp.org/"
license=('LGPL')
groups=('gupnp')
depends=('gupnp')
makedepends=('gtk-doc' 'pkgconfig')
provides=('gupnp-av')
conflicts=('gupnp-av')
options=('!libtool')
source=("http://www.gupnp.org/sites/all/files/sources/$_pkgname-$pkgver.tar.gz")
md5sums=('4ba8c71521916944400722687f3ae95a')

build() {
  cd $srcdir/$_pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
