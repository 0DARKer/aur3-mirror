pkgname=chrome-remote-desktop
pkgver=35.0.1916.17
pkgrel=1
pkgdesc="Chrome Remote Desktop allows you to securely access your computer over the Internet through the Chrome browser or a Chromebook."
arch=('i686' 'x86_64')
url="https://chrome.google.com/webstore/detail/gbchcmhmhahfdphkhkmpfmihenigjmpp"
license=('custom:google')
depends=('libxtst' 'gtk2' 'gconf' 'nss' 'python2>=2.6')
optdepends=('google-chrome')
if [ "$CARCH" == x86_64 ]; then
	source=(https://dl.google.com/linux/direct/chrome-remote-desktop_current_amd64.deb)
	md5sums=('ac95dbefad5f9fc642d769823985fac7')
elif [ "$CARCH" == i686 ]; then
	source=(https://dl.google.com/linux/direct/chrome-remote-desktop_current_i386.deb)
	md5sums=('a00b511e9d0e3289ba4225b3fd2b311c')
fi


package() {
	bsdtar -xf data.tar.gz -C "${pkgdir}/"
	rm -R "${pkgdir}/etc/cron.daily/"
	rm -R "${pkgdir}/etc/init.d/"
}
