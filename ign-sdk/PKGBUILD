pkgname=ign-sdk
pkgver=1
pkgrel=1
pkgdesc="ign-sdk api" 
url="https://github.com/anak10thn/ignsdk-qt"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('qt4' 'qtwebkit' 'qjson')
optdepends=('git')
makedepends=('qt4' 'qtwebkit' 'qjson')
options=('!strip' '!emptydirs')
source=('ign-sdk::git://github.com/anak10thn/ignsdk-qt.git')
md5sums=('SKIP')
_gourl=github.com/anak10thn/ignsdk-qt

package() {
  cd ign-sdk
  mkdir -p $pkgdir/usr/share/ign-sdk/
  mkdir -p $pkgdir/usr/bin/
  cp -R css $pkgdir/usr/share/ign-sdk/
  cp -R img $pkgdir/usr/share/ign-sdk/
  cp -R js $pkgdir/usr/share/ign-sdk/
  cp -R test $pkgdir/usr/share/ign-sdk/
  
  qmake-qt4
  make
  
  cp ignsdk $pkgdir/usr/bin/
  
}







