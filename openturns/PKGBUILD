# Maintainer: Julien Schueller <schueller at phimeca dot com>

pkgname=('openturns')
pkgver=1.2
pkgrel=1
pkgdesc="Uncertainty treatment library in Python"
license=('LGPL3')
arch=('i686' 'x86_64')
url="http://www.openturns.org/"
depends=('lapack' 'libxml2' 'intel-tbb' 'r' 'python')
makedepends=('lapack' 'libxml2' 'intel-tbb' 'r' 'python' 'cmake' 'gcc' 'gcc-fortran' 'bison' 'flex' 'swig' 'bc')
#source=("http://downloads.sourceforge.net/sourceforge/openturns/openturns/openturns-$pkgver.tar.bz2")
#md5sums=('7b52dcfd5f1a7ce0e271f554257cec19')

build() {
#   tar xjf $pkgname-$pkgver.tar.bz2
  svn co https://svn.openturns.org/openturns/tags/openturns-1.2rc1 $pkgname-$pkgver
  cd $pkgname-$pkgver
  2to3 -w python/test/t_*.py
  R CMD INSTALL --library=$PWD utils/rot_1.4.5.tar.gz
  export R_LIBS=$PWD
  export CFLAGS="$CFLAGS -fno-cse-follow-jumps"
  cmake . -DCMAKE_INSTALL_PREFIX=/usr \
          -DSYSTEM_INSTALL=ON \
          -DOPENTURNS_SYSCONFIG_PATH=/etc
  make
}

check() {
  cd $srcdir/$pkgname-$pkgver
}

package() {
  cd $pkgname-$pkgver
  mkdir -p $pkgdir/lib/R/library/
  cp -r rot $pkgdir/lib/R/library/
  make DESTDIR=$pkgdir install
}

