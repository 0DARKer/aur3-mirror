# Maintainer: Julien Schueller <schueller at phimeca dot com>

pkgname=('openturns')
pkgver=1.1
pkgrel=1
pkgdesc="C++ uncertainty library usable as a python module"
license=('LGPL3')
arch=('i686' 'x86_64')
url="http://www.openturns.org/"
depends=('lapack' 'libxml2' 'intel-tbb' 'r' 'python2')
makedepends=('lapack' 'libxml2' 'intel-tbb' 'r' 'python2' 'cmake' 'gcc' 'gcc-fortran' 'bison' 'flex' 'swig' 'bc')
source=("http://downloads.sourceforge.net/sourceforge/openturns/openturns/openturns-$pkgver.tar.bz2")
md5sums=('335911de229b992c0dd6fc4ba039bf78')

build() {
  tar xjf $pkgname-$pkgver.tar.bz2
  cd $pkgname-$pkgver
  R CMD INSTALL --library=$PWD utils/rot_1.4.5.tar.gz
  export R_LIBS=$PWD
  export CFLAGS="$CFLAGS -fno-cse-follow-jumps"
  cmake . -DCMAKE_INSTALL_PREFIX=/usr \
          -DOPENTURNS_LIBRARY_PATH=/usr/lib \
          -DCMAKE_INSTALL_LIBDIR=/usr/lib \
          -DOPENTURNS_WRAPPER_PATH=/usr/lib/openturns/wrappers \
          -DLIB_SUFFIX="" \
          -DOPENTURNS_SYSTEM_INSTALL=ON \
          -DOPENTURNS_SYSCONFIG_PATH=/etc \
          -DPYTHON_INCLUDE_DIR=/usr/include/python2.7 \
          -DPYTHON_LIBRARY=/usr/lib/libpython2.7.so \
          -DPYTHON_EXECUTABLE=/usr/bin/python2
  make
}

check() {
  cd $srcdir/$pkgname-$pkgver
#   make -k check
}

package() {
  cd $pkgname-$pkgver
  mkdir -p $pkgdir/lib/R/library/
  cp -r rot $pkgdir/lib/R/library/
  make DESTDIR=$pkgdir install
}

