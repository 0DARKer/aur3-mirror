# Maintainer : Maximilien Noal <noal dot maximilien at gmail dot com>
pkgname=xfce4-volumed-pulse
pkgver=0.1.13
pkgrel=1
pkgdesc="A volume keys control daemon for Xfce (pulseaudio fork from Xubuntu)"
arch=('i686', 'x86_64')
license=('GPLV3')
conflicts=('xfce4-volumed')
url="http://lionel.lefolgoc.net/gitweb/?p=xfce4-volumed-pulse.git"
depends=('gstreamer0.10-base' 'libnotify' 'xfconf' 'pulseaudio' 'libkeybinder2')
optdepends=('gstreamer0.10-base-plugins: for sound card support'
            'xfce4-notifyd: for OSD notifications')
md5sums=('544b0e9b71e8c5663c1ac42ba0e9013d')
source="https://launchpad.net/~mrpouit/+archive/ppa/+files/xfce4-volumed-pulse_0.1.13%2Bgit20120526.0.6058cce.orig.tar.bz2"

_untardir="xfce4-volumed-pulse-0.1.13git-6058cce"

build() {
  tar xvjf xfce4-volumed-pulse_0.1.13%2Bgit20120526.0.6058cce.orig.tar.bz2

  cd "${srcdir}/${_untardir}"

  ./configure --prefix=/usr --sysconfdir=/etc \
              --libexecdir=/usr/lib \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${_untardir}"

  make DESTDIR="${pkgdir}" install
}
