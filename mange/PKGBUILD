# Maintainer: Jesse McClure <jmcclure at cns dot umass dot edu>
pkgname=mange
pkgver=0.1b
pkgrel=1
pkgdesc="A curses-based spreadsheet (.csv .tsv) editor"
url=http://dl.dropbox.com/u/39577570/mange-0.1b.tar.gz
arch=(any)
license=('GPL')
depends=('ncurses')
optdepends=('r: graphing support'
'feh: to view graphs')
source=("http://dl.dropbox.com/u/39577570/mange-0.1b.tar.gz")
md5sums=('8b5fa9c2b6707a625687188fe20551eb')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}


