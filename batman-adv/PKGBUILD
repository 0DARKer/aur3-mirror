# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=batman-adv
pkgver=2011.1.0
pkgrel=1
pkgdesc="Batman-advanced is a new approach to wireless networking"
arch=('i686' 'x86_64')
url="http://www.open-mesh.net/"
license=('GPL')
install=('batman-adv.install')
source=("http://downloads.open-mesh.org/batman/releases/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz")
depends=('kernel26-headers' 'batctl')
sha1sums=('f8e8157be9b5ec3a8c4b576940069411ca7a63fe')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  install -D -m644 batman-adv.ko $pkgdir/lib/modules/`uname -r`/misc/batman_adv.ko
  install -D -m644 README $pkgdir/usr/share/doc/batman-adv/README
}

