# Maintainer: OK100 <ok100 at openmailbox dot org>

pkgname=cmusfm
pkgver=0.2.0
pkgrel=1
pkgdesc="Last.fm scrobbler for cmus music player"
url="https://github.com/Arkq/cmusfm"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('cmus' 'curl')
install='cmusfm.install'
source=("https://github.com/Arkq/$pkgname/archive/v$pkgver.tar.gz")
md5sums=('57d3a0ce2a2e1ceb147795cffda52673')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 cmusfm "$pkgdir/usr/bin/cmusfm"
}
