pkgname=python2-bottleneck
pkgver=0.5.0
pkgrel=2
pkgdesc="Fast NumPy array functions written in Cython"
arch=(any)
url="http://berkeleyanalytics.com/bottleneck/"
license=('BSD')
depends=('python2' 'python2-numpy')
optdepends=('python2-nose')
makedepends=('git' 'gcc')
provides=('python2-bottleneck-git')
conflicts=('python2-bottleneck-git')
replaces=()
backup=()
options=(!emptydirs)
source=('http://pypi.python.org/packages/source/B/Bottleneck/Bottleneck-0.5.0.tar.gz#md5=65f2b3be0ca74b859392d554a48a0906')
md5sums=('65f2b3be0ca74b859392d554a48a0906')

_name=Bottleneck

build()
{
  # Install using setup.py
  cd "$srcdir/$_name-$pkgver"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}
