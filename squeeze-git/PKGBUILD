pkgname=squeeze-git
pkgver=20110914
pkgrel=1
pkgdesc="Squeeze is  a modern and advanced archive manager for the Xfce Desktop Environment"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-git')
makedepends=('git' 'pkgconfig' 'gtk-doc')
depends=('libxfce4util' 'hicolor-icon-theme' 'dbus-glib' 'gtk2' 'desktop-file-utils')
conflicts=('squeeze')
provides=("squeeze")
options=('!libtool')
install=squeeze.install
source=()

_gitroot="git://git.xfce.org/apps/squeeze"
_gitname="squeeze"

build() {    
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib \
  --localstatedir=/var 
  make || return 1
}
package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR=${startdir}/pkg install
}
md5sums=()
