_pkgname=squeeze
pkgname=squeeze-git
pkgver=squeeze.0.2.0.321.gba043fd
pkgrel=1
pkgdesc="Squeeze is  a modern and advanced archive manager for the Xfce Desktop Environment"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-git')
makedepends=('git' 'xfce4-dev-tools' 'pkgconfig' 'gtk-doc' 'intltool')
depends=('libxfce4util' 'hicolor-icon-theme' 'dbus-glib' 'gtk2' 'gtk3' 'desktop-file-utils')
conflicts=('squeeze')
provides=("squeeze" "squeeze-git")
options=('!libtool')
install=squeeze.install
branch=("stephan/new-ui")
#branch=("master")
source=(git+git://git.xfce.org/apps/squeeze#branch=$branch)
md5sums=('SKIP')

pkgver(){
  cd $srcdir/$_pkgname
#  echo "$(git describe --always --abbrev=0 | sed 's/squeeze-//g' ).git$(git rev-list --count HEAD | sed 's/-/./g' )"
  git describe --always | sed 's|-|.|g'
}

build(){
  cd $srcdir/$_pkgname
  mkdir -p m4
  ./autogen.sh --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/$_pkgname \
  --localstatedir=/var --disable-debug --bindir=/usr/bin --sbindir=/usr/bin \
  --libdir=/usr/lib 
  make
}

package() {
	cd $srcdir/$_pkgname
	make DESTDIR=$pkgdir sbindir=/usr/bin install
}

