# Contributor: Philipp Schrader <philipp.schrader+arch@gmail.com>
pkgname=uboot-mkimage
pkgver=0.4
pkgrel=1
pkgdesc="U-Boot mkimage utility, which encapsulates a compressed \"uImage\" Linux kerel image with header information, CRC32 checksum, etc, for use with the U-Boot bootloader"
arch=('i686' 'x86_64')
url="git://scarlet.buici.com/uboot-mkimage"
license=('GPL2' 'custom')
#makedepends=('git')
source=(http://ftp.de.debian.org/debian/pool/main/u/${pkgname}/${pkgname}_${pkgver}.tar.gz)

build() {
  cd "$srcdir/${pkgname}"

  make || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('6ff36897a50c7fcd26bc088dc52841c8')

