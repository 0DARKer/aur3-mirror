# Maintainer: crazyelf5

pkgname=orta-openbox-theme
pkgver=1.0
pkgrel=1
pkgdesc="Openbox theme matching the Orta GTK theme"
arch=('any')
url="http://slug45.jarfil.net"
license=('GPL')
depends=('openbox')
source=(${url}/files/Slug-Orta-Openbox.tar.gz)
md5sums=('a0ce21b4e0edf9988762682e07c39542')

package() {
  install -dm755 "$pkgdir/usr/share/themes"
  cp -r "$srcdir/Slug45-Orta-Openbox/Slug45-Orta-Openbox" "$pkgdir/usr/share/themes/Orta-Openbox"

  find "$pkgdir/" -type f -exec chmod 644 '{}' \;
  find "$pkgdir/" -type d -exec chmod 755 '{}' \;
}
