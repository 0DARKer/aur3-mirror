# Maintainer:  TDY <tdy@gmx.com>
# Contributor: shamrok <szamrok@gmail.com>

pkgname=lfm
pkgver=2.2
pkgrel=1
pkgdesc="A simple but powerful file manager inspired by Midnight Commander"
arch=('any')
url="http://www.terra.es/personal7/inigoserna/lfm/"
license=('GPL3')
depends=('ncurses>=5.0' 'python>=2.3')
source=(http://www.terra.es/personal7/inigoserna/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py build || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir"
}
md5sums=('c46385f0a5daa0a43cb0a2434a634f8b')
