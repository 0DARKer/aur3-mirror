# Maintainer: Tom Wambold <tom5760@gmail.com>
pkgname=python-misaka
pkgver=1.0.0b1
pkgrel=1
pkgdesc='A Python binding for Sundown, a markdown library.'
arch=('i686' 'x86_64')
url='http://misaka.61924.nl/'
license=('MIT')
depends=('python')
options=(!emptydirs)
source=("https://github.com/FSX/misaka/tarball/v$pkgver")
md5sums=('dab49bee646b911aa3e93539e915860b')

_dir='FSX-misaka-9948a36'

build() {
  cd "$srcdir/$_dir"
  python setup.py build
}

package() {
  cd "$srcdir/$_dir"
  python setup.py install --root="$pkgdir/" --optimize=1
  install -D -m644 LICENSE.txt $pkgdir/usr/share/licenses/python-misaka/LICENSE
}

