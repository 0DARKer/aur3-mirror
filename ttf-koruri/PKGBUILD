# Contributor: orumin <dev@orum.in>

pkgname=ttf-koruri
pkgver=20140524
pkgrel=1
pkgdesc="Japanese TrueType font obtained by mixing M+ and Open Sans"
arch=('any')
url="http://sourceforge.jp/projects/koruri"
license=('APACHE')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
_mirror="jaist"
source=(http://${_mirror}.dl.sourceforge.jp/koruri/61231/Koruri-${pkgver}.tar.xz)
md5sums=('7912249d6aa68268b9315748e94746a9')

package() {
    cd "${srcdir}"

    install -d "${pkgdir}/usr/share/fonts/TTF"
    install -m644 "Koruri-${pkgver}"/*.ttf "${pkgdir}/usr/share/fonts/TTF"
}
