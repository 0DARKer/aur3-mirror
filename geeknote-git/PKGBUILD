# Maintainer: Jeff <jecxjo@sdf.lonestar.org>
pkgname=geeknote-git
pkgver=20121108
pkgrel=2
pkgdesc="Work with Evernote from command line"
arch=(any)
url="http://www.geeknote.me"
license=('GPL')
depends=('python2')
makedepends=('git' 'python2')
provides=(geeknote)
conflicts=()
replaces=()
backup=()
options=()
install=
source=('002-TLSv1.patch')
noextract=('002-TLSv1.patch')
md5sums=('a6425eebbf3f9fe14951272c0bdd453c')

_gitroot=git://github.com/VitaliyRodnenko/geeknote.git
_gitname=geeknote

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
}

package() {
  cd "$srcdir/$_gitname-build"

  mkdir -p $pkgdir/{etc/bash_completion.d,usr/{lib/geeknone,share/doc,bin}}
  cp "$srcdir/$_gitname-build"/*.py $pkgdir/usr/lib/geeknone
  cp -rf "$srcdir/$_gitname-build"/lib $pkgdir/usr/lib/geeknone/lib
  cp -rf "$srcdir/$_gitname-build"/bash_completion/* $pkgdir/etc/bash_completion.d
  cp -rf "$srcdir/$_gitname-build"/deb/geeknote.py $pkgdir/usr/bin/geeknote
  cp -rf "$srcdir/$_gitname-build"/deb/gnsync.py $pkgdir/usr/bin/gnsync

  sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|' $pkgdir/usr/bin/geeknote
  sed -i "s/'local', //" $pkgdir/usr/bin/geeknote

  sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|' $pkgdir/usr/bin/gnsync
  sed -i "s/'local', //" $pkgdir/usr/bin/gnsync

  chmod 755 $pkgdir/usr/bin/*

  # BUG FIX:
  # Current Evernote Python SDK does not support SSL. Changing to use
  # TLS for the moment, copying httplib to site-packages and modifying.
  patch -p1 < $srcdir/002-TLSv1.patch

  HTTPLIB_FILE=`echo "import httplib; print httplib.__file__" | python2`
  GEEKNOTE_LIB="$pkgdir/usr/lib/geeknone/lib"
  #mkdir -p $SITE_PACKAGES
  cp $HTTPLIB_FILE $GEEKNOTE_LIB/httplib_TLSv1.py
  sed -i 's/self.sock = ssl.wrap_socket(sock, self.key_file, self.cert_file)/self.sock = ssl.wrap_socket(sock, self.key_file, self.cert_file, ssl_version=ssl.PROTOCOL_TLSv1)/' $GEEKNOTE_LIB/httplib_TLSv1.py
  # BUG FIX DONE

}

# vim:set ts=2 sw=2 et:
