pkgname=wxwidgets
pkgver=2.9.0
pkgrel=1
pkgdesc=" wxWidgets is a C++ library that lets developers create applications for Windows, OS X, Linux and UNIX"
arch=('i686' 'x86_64')
url="http://www.wxwidgets.org/"
license=('wxWindows')
depends=('openmotif' 'gtk2')
#makedepends=()
#provides=()
conflicts=('wxgtk-2.9')
source=(http://voxel.dl.sourceforge.net/project/wxwindows/wxAll/$pkgver/wxWidgets-$pkgver.tar.gz)
md5sums=('5b3cdf95c5c90322c964f43893b9d0bb')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
