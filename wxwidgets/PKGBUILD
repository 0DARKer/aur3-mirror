pkgname=wxwidgets
pkgver=2.9.5
pkgrel=1
pkgdesc=" wxWidgets is a C++ library that lets developers create applications for Windows, OS X, Linux and UNIX"
arch=('i686' 'x86_64')
url="http://www.wxwidgets.org/"
license=('wxWindows')
depends=('openmotif' 'gtk2')
#makedepends=()
#provides=()
conflicts=('wxgtk-2.9')
source=(http://biolpc22.york.ac.uk/pub/$pkgver/wxWidgets-$pkgver.tar.bz2)
md5sums=('e98c5f92805493f150656403ffef3bb0')

build() {
  cd "$srcdir/wxWidgets-$pkgver"

  ./configure --prefix=/usr
  make || return 1
}

package() {
  cd "$srcdir/wxWidgets-$pkgver"

  make DESTDIR="$pkgdir/" install
}
