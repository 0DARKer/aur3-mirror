pkgname=wxwidgets
_pkgname=wxWidgets
pkgver=3.0.0
pkgrel=1
pkgdesc="wxWidgets is a C++ library that lets developers create applications for Windows, OS X, Linux and UNIX."
arch=('x86_64' 'i686')
url="http://www.wxwidgets.org/downloads/"
license=('LGPL')
groups=()
depends=('openmotif' 'gtk2')
#makedepends=()
#optdepends=()
#provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("http://downloads.sourceforge.net/wxwindows/$_pkgname-$pkgver.tar.bz2")
noextract=()
md5sums=('241998efc12205172ed24c18788ea2cd')

build() {
cd "$srcdir/$_pkgname-$pkgver"

./configure
make
}

package() {
cd "$srcdir/$_pkgname-$pkgver"

make DESTDIR="$pkgdir/" install
}