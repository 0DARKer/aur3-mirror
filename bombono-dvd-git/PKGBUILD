# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=bombono-dvd-git
pkgver=20100530
pkgrel=1
pkgdesc="DVD authoring program with nice and clean GUI."
url="http://www.bombono.org"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('boost' 'dvd+rw-tools' 'dvdauthor' 'gtk2' 'gtkmm' 'graphicsmagick' 'libdvdread' 'libxml++' 'mjpegtools' 'toolame')
makedepends=('git' 'scons')

build() {
  cd $startdir
  git clone git://gitorious.org/bombono-dvd/bombono-dvd.git
  cd bombono-dvd
  scons PREFIX=$pkgdir/usr install
}
