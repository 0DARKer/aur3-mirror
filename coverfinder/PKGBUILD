# Contributor: Sven Salzwedel <sven_salzwedel@web.de>
pkgname=coverfinder
pkgver=0.2.1
pkgrel=2
pkgdesc='Find and download cover images from Amazon'
arch=(i686)
url='http://mookooh.org/coverfinder/'
license=('GPL')
depends=(gtk2 libxml2 gvfs)
makedepends=(gtk2 libxml2)
options=(strip)
install='coverfinder.install'
source=(http://mookooh.org/coverfinder/releases/${pkgname}-${pkgver}.tar.gz)
md5sums=('b91082c06b76f377e7ac54432abc70f7')

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$startdir/pkg" install
}

# vim:set ts=2 sw=2 et:
