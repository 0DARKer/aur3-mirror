pkgname=mkinitcpio-nbd
pkgver=0.3.1
pkgrel=1
pkgdesc='mkinitcpio hook to boot from a Network Block Device (NBD)'
arch=('any')
url='http://nbd.sourceforge.net/'
license=('BSD')
depends=('mkinitcpio' 'mkinitcpio-nfs-utils' 'nbd')
source=('nbd_hook' 'nbd_install' 'omit_kill_nbd')

build() {
    install -o root -g root -m 644 -D ${srcdir}/nbd_install ${pkgdir}/usr/lib/initcpio/install/nbd
    install -o root -g root -m 644 -D ${srcdir}/nbd_hook ${pkgdir}/usr/lib/initcpio/hooks/nbd
    install -o root -g root -m 644 -D ${srcdir}/omit_kill_nbd ${pkgdir}/etc/rc.d/functions.d/omit_kill_nbd
}

md5sums=('e95af024c12f8373ad0487e091ca2ae2'
	 '5d1db4eb4960f8ec835482b8d767f7e9'
	 '324a872c9beea4630cdb55e454facc99')
