# vim: set ft=sh:
run_hook ()
{
	echo "nbd: loading module..."
	modprobe nbd

	nbd_ip=$(echo ${nbd_server} | cut -d ":" -f 1)
	nbd_port=$(echo ${nbd_server} | cut -d ":" -f 2)

	echo nbd_server: ${nbd_server}
	echo nbd_ip: ${nbd_ip}
	echo nbd_port: ${nbd_port}

	echo "nbd: connecting..."
	nbd-client ${nbd_ip} ${nbd_port} /dev/nbd0 -persist
}
