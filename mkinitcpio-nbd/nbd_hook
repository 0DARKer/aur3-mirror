run_hook() {
	msg "loading module..."
	modprobe nbd

	msg "nbd_server = ${nbd_server}"

	nbd_ip=$(echo ${nbd_server} | cut -s -d ":" -f 1)
	nbd_port=$(echo ${nbd_server} | cut -s -d ":" -f 2)

	if [ -z "${nbd_ip}" -o -z "${nbd_port}" ]; then
		err "invalid parameter, check that nbd_server is in the format <ip>:<port>"
	else
		msg "connecting..."
		nbd-client ${nbd_ip} ${nbd_port} /dev/nbd0 -persist
	fi
}
