pkgname=python2-aplpy
pkgver=0.9.11
pkgrel=1
pkgdesc="An astronomical plotting library in python"
arch=('any')
url="http://aplpy.sourceforge.net/"
license=("MIT")
depends=('python2' 'python2-matplotlib>=1.0.0' 'python2-numpy>=1.4' 'python2-pyregion' 'python2-imaging' 'python2-astropy' 'python2-pyavm')
source=("https://pypi.python.org/packages/source/A/APLpy/APLpy-$pkgver.tar.gz")
md5sums=('53a2130136dd6e0b2fbf1c8e8b15d3e6')

package() {
  cd ${srcdir}/APLpy-${pkgver}
  python2 setup.py install --root=${pkgdir}/ --optimize=1
}
