pkgname=twitcrusader-git
pkgver=20111008
pkgrel=15
pkgdesc="A Twitter client for Linux (Nightly Release)"
arch=('i686' 'x86_64')
url="http://www.twitcrusader.org"
license=('GPL')
depends=('intltool' 'pkg-config' 'gcc' 'gtk2' 'curl' 'liboauth' 'libxml2' 'libnotify')
makedepends=('git')
provides=('twitcrusader')
conflicts=('twitcrusader')

_gitroot="git://github.com/PTKDev/ClientTwitter-TwitCrusader.git a6115d8b43"
_gitname="twitcrusader"
_gitbranch="nightly"

build() {
  cd "${srcdir}"

  msg "TwitCrusader - Nightly Release"
  msg "Connecting to GitHub server...."
  
  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git checkout ${_gitbranch} && git pull
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname} 
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
  cd ${_gitname}
  
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"

  make install
}
