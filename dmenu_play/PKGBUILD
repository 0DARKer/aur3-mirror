pkgname=dmenu_play
pkgver=0.1
pkgrel=1
url="https://github.com/neeee/dmenu_play"
pkgdesc="Simple script that searches the current mpd playlist with dmenu"
arch=('any')
license=('GPL3')
depends=('mpc' 'dmenu')
source=("$pkgname")
md5sums=('0ce319f7f3bbbb6694c1d28acb0e4f9d')

package() {
   	install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname" 
}

