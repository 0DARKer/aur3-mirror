# Contributor: Ben Webb <bjwebb67 at googlemail dot com>
pkgname=perl-sru
pkgver=0.6
pkgrel=1
pkgdesc="Search and Retrieval by URL"
arch=(any)
url="http://search.cpan.org/~esummers/SRU-$pkgver/lib/SRU.pm"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-cgi-application' 'perl-cql-parser')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/E/ES/ESUMMERS/SRU-$pkgver.tar.gz)
md5sums=('3a15384033ecff19242dbcb7efa108a9')

build() {
  cd "$srcdir/SRU-$pkgver"

  # install module in vendor directories.
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name perllocal.pod -delete
  find "$pkgdir" -name .packlist -delete
}
