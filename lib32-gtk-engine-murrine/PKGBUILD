# Contributor: Jonathan Conder <jonno dot conder at gmail dot com>

_pkgbasename=gtk-engine-murrine
pkgname=lib32-$_pkgbasename
pkgver=0.98.1.1
pkgrel=1
pkgdesc="GTK2 engine to make your desktop look like a 'murrina', an italian word meaning the art glass works done by Venicians glass blowers. Multilib."
arch=('x86_64')
url="http://cimitan.com/murrine/project/murrine"
license=('GPL')
depends=('lib32-gtk2' "$_pkgbasename")
makedepends=('gcc-multilib' 'intltool' 'perl')
options=('!libtool')
source=("http://ftp.gnome.org/pub/GNOME/sources/murrine/${pkgver%.*.*}/murrine-$pkgver.tar.bz2") 
md5sums=('ea2eeb5f83b0b9d730e7f49693a77bcc')

build() {

  export CC='gcc -m32'
  export PKG_CONFIG_PATH='/usr/lib32/pkgconfig'

  cd "$srcdir/murrine-$pkgver"

  ./configure \
	--prefix=/usr \
	--libdir=/usr/lib32 \
	--enable-animation \
	--enable-animationrtl


  make
}

package() {

  cd "$srcdir/murrine-$pkgver"

  make DESTDIR="$pkgdir" install
  rm -rf "$pkgdir/usr/share"
}
