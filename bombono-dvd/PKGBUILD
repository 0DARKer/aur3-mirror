# $Id: PKGBUILD

pkgname=bombono-dvd
pkgver=1.0.0
pkgrel=1
pkgdesc="DVD authoring program with nice and clean GUI"
arch=('i686' 'x86_64')
url="http://www.bombono.org"
license=('GPL')
depends=('gtk2>=2.8' 'gtkmm>=2.4' 'mjpegtools>=1.8.0' 'ffmpeg' 'libdvdread' 'dvdauthor' \
         'dvd+rw-tools' 'twolame' 'libxml++' 'boost>=1.45' 'enca')
makedepends=('scons>=0.96')
source=(http://downloads.sourceforge.net/bombono/$pkgname-$pkgver.tar.bz2)
md5sums=('262c87d04bd1155a070e60be133d96b6')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  scons PREFIX="/usr" DESTDIR="${pkgdir}" USE_EXT_BOOST=1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  scons PREFIX="/usr" DESTDIR="${pkgdir}" install
}

