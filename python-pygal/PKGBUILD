# Maintainer: Ã‰ric Gillet <eric.gillet@linuxw.info>
pkgname=python-pygal
_gitname=pygal
pkgver=c5b2960
pkgrel=1
pkgdesc="A python svg graph plotting library"
arch=('any')
url="http://pygal.org/"
license=('LGPL3')
groups=()
depends=('python' 'python-lxml')
makedepends=()
optdepends=(
  'python-cairosvg: PNG output'
  'python-tinycss: PNG output'
  'python-cssselect: PNG output'
  'python-scipy: Interpolation support'
  'python-pytest: Unit testing'
)
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=('git+https://github.com/Kozea/pygal.git')
md5sums=('SKIP')


pkgver() {
  cd "$srcdir/$_gitname"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "$srcdir/$_gitname"
  python setup.py build
}

package() {
  cd "$_gitname"
  python setup.py install --root="$pkgdir/" --optimize=1
}

