pkgname=bashrun2
pkgver=0.2.3
pkgrel=1
pkgdesc="Launch applications from interactive bash sessions"
arch=('i686' 'x86_64')
url="http://bashrun2.googlecode.com"
license=('GPL2')
depends=('bash' 'libx11')
source=("${pkgname}-${pkgver}.tar.gz::https://drive.google.com/uc?id=0B9kYBr8AufZgN29mWFFRbmJoOTQ&amp;export=download")
md5sums=('dbe9e4f3ca1effcf66d9d2c9b08d7857')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
