# Maintainer: Junchun Guan <junchunx.guan@gmail.com>
pkgname=gbs
pkgver=0.23
pkgrel=1
pkgdesc="Git build system for Tizen"
arch=(any)
url="https://download.tizen.org/tools/latest-release"
license=('GPL2')
depends=('python2'
         'python2-pycurl'
         'git'
         'sudo'
         'pristine-tar'
         'depanneur'
         'mic'
         'librpm-tizen'
         'git-buildpackage-rpm')
optdepends=('osc: Command line client for openSUSE Build Service')
source=(http://download.tizen.org/tools/archive/14.03.1/openSUSE_13.1/src/gbs-0.23-1.19.1.src.rpm)
md5sums=('44a33de588392c1f533b91266f0ce380')

package() {
  cd "$srcdir"
  tar -x -f "$pkgname"_"$pkgver".tar.gz
  cd "$srcdir/$pkgname-${pkgver}"

  python2 setup.py install --root="$pkgdir"
}

