# Maintainer: tanuva <tanuva aet nightsoul d00t org>
# Contributor: qwer1234
pkgname=gtk-theme-adwaita-cupertino
pkgver=1.3.5
pkgrel=3
pkgdesc="Adwaita Cupertino GTK3 theme"
arch=(any)
url="http://gnome-look.org/content/show.php?content=147061"
license=('GPL')
depends=('gtk3' 'gtk-engine-unico' 'gtk-engine-murrine')
source=('http://gnome-look.org/CONTENT/content-files/147061-Adwaita-Cupertino.tar.gz')
md5sums=('37895fa70d3c93d15b286ba701c6d90e')
install=gtk-theme-adwaita-cupertino.install

build() {
 	bsdtar -xf ${srcdir}/147061-Adwaita-Cupertino.tar.gz
	mkdir -p ${pkgdir}/usr/share/themes
	cp -R ${srcdir}/Adwaita*  ${pkgdir}/usr/share/themes/
	cd ${pkgdir}/usr/share/themes/
	find . -type f -exec chmod 644 {} \;
	find . -type d -exec chmod 755 {} \;
}

install() {
	msg "Nautilus customization:"
	msg "Edit the last line of /usr/share/themes/Adwaita Cupertino {L,SL}/gtk-3.0/gtk.css:"
	msg "1. \"gnome-applications-gray.css\" (nautilus sidebar and toolbar gray)"
	msg "2. \"gnome-applications-light.css\" (nautilus sidebar and toolbar light leopard style)"
	msg "3. \"gnome-applications-gray-light.css\" (nautilus sidebar gray and toolbar light)"

	msg "Metacity window icons, glassy (cupertino) version:"
	msg "Extract contents of buttons_glassy.tar.gz into /usr/share/themes/Adwaita Cupertino {L,SL}/metacity-1/"
	msg "To restore matte buttons, extract \"buttons_normal.tar.gz\" into the same folder."
}
