# Contributor: Kyle Keen <keenerd@gmail.com>
pkgname=eggwm
pkgver=0.1
pkgrel=1
pkgdesc="A simple and light Qt4 WM.  100% compatible with the EWMH and ICCCM standards."
url="http://code.google.com/p/eggwm/"
arch=('i686' 'x86_64')
license="GPL"
depends=('qt')
source=(http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz $pkgname.install)
md5sums=('2ccbda775f5b1ce0c96316c0a1e7988e'
         'a6cfcc4d8a6707c33838e728b9b31618')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  qmake
  make
  tar xvzf eggwm_config.tar.gz
  find .eggwm -type f | xargs chmod -x 
  install -d "$pkgdir"/etc/eggwm
  cp -R .eggwm/* "$pkgdir"/etc/eggwm
  install -D -m755 eggwm "$pkgdir"/usr/bin/eggwm
}
