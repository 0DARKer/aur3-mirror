# Maintainer: Leif Warner <abimelech@gmail.com>
pkgname=vim-idris-git
pkgver=20121126
pkgrel=1
pkgdesc="Vim syntax support for the dependently-typed Idris language."
arch=('any')
url="https://github.com/edwinb/Idris-dev"
license=('MIT')
depends=('vim')
makedepends=('git')
provides=('vim-idris')
conflicts=('vim-idris')

_gitroot="https://github.com/edwinb/Idris-dev.git"
_gitname="Idris-dev"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

}

package() {
  cd "$srcdir/$_gitname-build/contribs/tool-support/vim"

  install -D -m644 syntax/idris.vim "${pkgdir}/usr/share/vim/vimfiles/syntax/idris.vim"
  install -D -m644 indent/idris.vim "${pkgdir}/usr/share/vim/vimfiles/indent/idris.vim"
  install -D -m644 ftdetect/idris.vim "${pkgdir}/usr/share/vim/vimfiles/ftdetect/idris.vim"
  install -D -m644 ftplugin/idris.vim "${pkgdir}/usr/share/vim/vimfiles/ftplugin/idris.vim"
} 
