# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-enthoughtbase-doc
pkgver=3.1.0
_githubtag=e52d845
pkgrel=1
pkgdesc="Documentation for EnthoughtBase"
arch=('any')
url="https://github.com/enthought/enthoughtbase"
license=('BSD')
makedepends=('python2-distribute' 'python2-setupdocs')
conflicts=('python2-enthoughtbase-doc-git' 'python-ets-enthoughtbase-doc-svn')
options=(!emptydirs)

source=("https://github.com/enthought/enthoughtbase/tarball/${pkgver}")
md5sums=('5e9f9f52349a21a596c6e91374a6241f')

build() {
  cd "$srcdir/enthought-enthoughtbase-${_githubtag}"

  python2 setup.py build_docs || return 1
}

package() {
  cd "$srcdir/enthought-enthoughtbase-${_githubtag}"

  install -d "${pkgdir}"/usr/share/doc/enthought/enthoughtbase
  cp -r build/docs/html/* "${pkgdir}"/usr/share/doc/enthought/enthoughtbase
}

