# Maintainer: Tim Gerhard <tim-gerhard@schnellbach-beltheim.de>
pkgname=dropboxd-userspace
pkgver=0.4
pkgrel=1
depends=('bash' 'dropbox')
pkgdesc="start dropboxd as a real daemon, running as a specified user."
arch=( i686 )
url="http://dl.dropbox.com/u/8192972/arch_pacs/dropboxd-userspace.html"
license=('custom')
install="install"
source=(dropboxd-userspace dropboxd-userspace.conf functions-bridge.sh)
md5sums=(345e720daa75e5444eff90d0a2a7fa0a 2aa3b6bcc8cc86deacde148da90fd2a6 0411df3381d89328d14799d3d1a55939)

build() {
	cd $srcdir
	mkdir -p ${pkgdir}/etc/rc.d/
	mkdir -p ${pkgdir}/etc/conf.d/
	mkdir -p ${pkgdir}/usr/lib/dropboxd-userspace
	install -m644 dropboxd-userspace.conf ${pkgdir}/etc/conf.d/
	install -m744 dropboxd-userspace ${pkgdir}/etc/rc.d/
	install -m744 functions-bridge.sh ${pkgdir}/usr/lib/dropboxd-userspace 
}
