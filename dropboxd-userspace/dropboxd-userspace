#!/bin/bash

. /etc/rc.conf
  function_helper=/usr/lib/dropboxd-userspace/functions-bridge.sh # see this script for further information

. /etc/conf.d/dropboxd-userspace.conf

PID=`pidof -o %PPID $DROPBOX_PATH`

case "$1" in
  start)
    $function_helper stat_busy "Starting Dropbox Service"
    if [ $USER = 'yourusername' ]; then
        echo "Please edit /etc/conf.d/dropboxd-userspace.conf before using this script."
        $function_helper stat_fail
    else
        [ -z "$PID" ] && su -c "$DROPBOXD_PATH &" $USER
        if [ $? -gt 0 ]; then
          $function_helper stat_fail
        else
          $function_helper add_daemon dropboxd-userspace
          $function_helper stat_done
        fi
    fi
    ;;
  stop)
    $function_helper stat_busy "Stopping Dropbox Service"
    [ ! -z "$PID" ] && kill $PID > /dev/null
    if [ $? -gt 0 ]; then
      $function_helper stat_fail
    else
      $function_helper rm_daemon dropboxd-userspace
      $function_helper stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 3
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
    ;;
esac
exit 0

