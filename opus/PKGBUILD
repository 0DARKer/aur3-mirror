pkgname=opus
pkgver=1.0.1rc
_realver=1.0.1-rc
pkgrel=1
pkgdesc="opus audio codec (incorporates skype's silk and xiph's celt codecs) for interactive speech and audio transmission over the internet."
arch=(i686 x86_64)
url="http://www.opus-codec.org/"
license=(BSD)
depends=()
source=(http://downloads.xiph.org/releases/opus/opus-$_realver.tar.gz)
md5sums=(3475592fc2fe4aafc6239bf879a6e884)

build(){
  cd "$srcdir/opus-$_realver"
  ./configure --enable-static=false --prefix=/usr  
  make
}

package() {
  cd "$srcdir/opus-$_realver"
  make DESTDIR="$pkgdir/" install
} 

