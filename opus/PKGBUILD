pkgname=opus
pkgver=0.9.8
pkgrel=1
pkgdesc="opus audio codec (incorporates skype's silk and xiph's celt codecs) for interactive speech and audio transmission over the internet."
arch=(i686 x86_64)
url="http://www.opus-codec.org/"
license=(BSD)
depends=()
source=(http://downloads.xiph.org/releases/opus/opus-0.9.8.tar.gz)
md5sums=(76c1876eae9169dee808ff4710d847cf)

build(){
  cd "$srcdir/opus-$pkgver"
  ./configure --prefix=/usr  
  make
}

package() {
  cd "$srcdir/opus-$pkgver"
  make DESTDIR="$pkgdir/" install
} 

