pkgname=opus
pkgver=0.9.10
pkgrel=1
pkgdesc="opus audio codec (incorporates skype's silk and xiph's celt codecs) for interactive speech and audio transmission over the internet."
arch=(i686 x86_64)
url="http://www.opus-codec.org/"
license=(BSD)
depends=()
source=(http://downloads.xiph.org/releases/opus/opus-0.9.10.tar.gz)
md5sums=(afbda2fd20dc08e6075db0f60297a137)

build(){
  cd "$srcdir/opus-$pkgver"
  ./configure --enable-static=false --prefix=/usr  
  make
}

package() {
  cd "$srcdir/opus-$pkgver"
  make DESTDIR="$pkgdir/" install
} 

