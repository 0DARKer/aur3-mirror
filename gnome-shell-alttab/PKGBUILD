# Maintainer: Ryan Peters <sloshy45 _AT_ sbcglobal _DOT_ net>
# If you have any bugs with the project, please report them on the GNOME Shell mailing list.
pkgname=gnome-shell-alttab
pkgver=1
pkgrel=2
pkgdesc="Restore the old GNOME 2 Alt+Tab functionality to GNOME Shell."
arch=('any')
url="http://mail.gnome.org/archives/gnome-shell-list/2011-January/msg00082.html"
license=('GPL')
depends=('gnome-shell')
source=("http://tbouffon.free.fr/AlternateTab.tar.gz")
md5sums=('2dbf895c8f797df03b3000a6095a0909')

build() {
  cd "$srcdir/"
  mkdir -p usr/local/share/gnome-shell/extensions
  mv "AlternateTab@thomas.bouffon.gmail.com/" "usr/local/share/gnome-shell/extensions/"
  cp -R "usr/" "$pkgdir/"
}
# vim:syntax=sh
