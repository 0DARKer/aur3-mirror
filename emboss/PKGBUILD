# Maintainer: moostik <mooostik_at_gmail.com>
# Contributor: mick elliot <micke@sfu.ca>
pkgname=emboss
_orgname=EMBOSS
pkgver=6.4.0
pkgrel=1
pkgdesc="A collection of molecular biology applications"
arch=('x86_64' 'i686')
url="http://emboss.sourceforge.net/"
depends=('gd' 'libx11' 'pcre' 'perl' 'java-runtime' 'libmysqlclient')
options=('!libtool')
license=('GPL2')
source=(ftp://emboss.open-bio.org/pub/EMBOSS/${_orgname}-$pkgver.tar.gz)
md5sums=('54993a22064222b01bd4fc8086f7684d')

build() {
  cd ${srcdir}/${_orgname}-$pkgver
  CFLAGS="${CFLAGS} -I/usr/lib/jvm/java-6-openjdk/include/"
  ./configure --prefix=/usr --enable-large --with-x \
	--with-javaos=/usr/lib/jvm/java-6-openjdk/include//linux/
  make
}

package() {
  cd ${srcdir}/${_orgname}-$pkgver
  make prefix=${pkgdir}/usr install
  rm -f ${pkgdir}/usr/include/{pcre,pcreposix}.h
}
