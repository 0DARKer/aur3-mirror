# Maintainer: Hexchain Tong <i@hexchain.org>

pkgname=cinnamon-theme-nadia
pkgver=1.0
pkgrel=1
pkgdesc="Nadia theme for Cinnamon desktop"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/144"
license=('GPL')
depends=('cinnamon')
options=('!strip')
source=('http://cinnamon-spices.linuxmint.com/uploads/themes/WAPA-4FBY-5EKQ.zip')
md5sums=('24986dc7ed3b68139d61a3cf64fd3638')

package() {
    cd nadiathemes
    find "Nadia" -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
    find "Nadia Dark" -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}
