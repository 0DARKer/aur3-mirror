# Maintainer: Bruno Carlin <self at aerdhyl dot eu>
pkgname=python2-setuptools_hg
pkgver=0.2
pkgrel=1
pkgdesc="Setuptools plugin for finding files under Mercurial version control."
arch=(any)
url="http://bitbucket.org/jezdez/setuptools_hg"
license=('GPL2')
depends=('python2' 'python2-distribute' 'mercurial')
makedepends=('tar' 'gzip')
source=("https://bitbucket.org/jezdez/setuptools_hg/downloads/setuptools_hg-$pkgver.tar.gz")
md5sums=('4a699aa6d8d173af946edaeada3cab41')
options=(!emptydirs)

build() {
  cd $srcdir/setuptools_hg-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1
}
