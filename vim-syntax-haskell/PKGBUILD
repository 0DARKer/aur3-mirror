pkgname=vim-syntax-haskell
pkgver=1.4
pkgrel=2
pkgdesc="Improvements on Vim's default 'haskell.vim' syntax file"
arch=('any')
url="https://github.com/urso/haskell_syntax.vim"
license=('unknown')
depends=('vim')
install=${pkgname}.install
source=("${pkgname}.vim::https://raw.github.com/urso/haskell_syntax.vim/master/syntax/haskell.vim")
sha512sums=('7b72b3a8734bade5e5e25cd0ccb9cfac3679cce148f0b3ffdf524b59876af98302bc4f997fb5d85a21edb3ee7fe5f29101aea1aec93c77aa7ba5f148a79df330')

package() {
	install -Dm644 "${srcdir}/${pkgname}.vim" "${pkgdir}/usr/share/vim/vimfiles/syntax/haskell.vim"
}
