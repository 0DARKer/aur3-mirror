# Maintainer: Tomoya Kose <mitsuset@gmail.com>
pkgname=python2-jcc
pkgver=2.15
pkgrel=1
pkgdesc="a C++ code generator for calling Java from C++/Python"
arch=(any)
url="http://pypi.python.org/pypi/JCC"
license=("Apache 2.0")
groups=()
depends=("python2" "java-environment")
makedepends=("python2-distribute")
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(
    "http://pypi.python.org/packages/source/J/JCC/JCC-2.15.tar.gz"
    "jcc.py")
noextract=()
md5sums=(
    "3328fdf93b8f6f5fc0691dd0b3dab985"
    "aa198a2a56a59035a8936bf0b31d7813")
build() { 
    export JCC_JDK=$JAVA_HOME
    cd $srcdir/JCC-$pkgver
    python2 setup.py install --root="$pkgdir" --prefix=/usr --optimize=1
    install -D -m 755 $srcdir/jcc.py $pkgdir/usr/bin/jcc
}
