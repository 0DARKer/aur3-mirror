pkgname=massxpert
pkgver=2.1.0
pkgrel=1
pkgdesc="Mass spectromic software, based on Qt4"
arch=('i686' 'x86_64')
url="http://massxpert.org"
license=('GPL3')
depends=('qt')
makedepends=('cmake')
source=(http://download.tuxfamily.org/massxpert/source/massxpert-$pkgver.tar.gz)

build() {
cd $srcdir
mkdir $pkgname-build
cd $pkgname-build
cmake -DCMAKE_INSTALL_PREFIX=/usr ../$pkgname-$pkgver || return 1
make || return 1
make DESTDIR=$startdir/pkg install || return 1

}
md5sums=('50ee3fecfac0ad047004748971a1f1c0')
