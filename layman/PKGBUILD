pkgname=layman
pkgver=1.2.3
pkgrel=1
pkgdesc="A python script for retrieving gentoo overlays."
arch=('i686' 'x86_64')
license=('GPL')
url="http://layman.sourceforge.net"
optdepends=('subversion' 'git' 'pyxml')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('2b0ca7f70b12467918ea59871304149f')
build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  python setup.py build
  python setup.py install --prefix=/usr --root=${startdir}/pkg
  mkdir -p $startdir/pkg/usr/local/portage/layman
  mkdir -p $startdir/pkg/etc/layman
  cp etc/* ${startdir}/pkg/etc/layman/
  install -D -m644 doc/layman.8 ${startdir}/pkg/usr/share/man/man8/layman.8
  install -D -m644 doc/layman.8.html ${startdir}/pkg/usr/share/doc/layman/layman.html
}
