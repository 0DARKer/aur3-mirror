# Contributor: Hoang Duc Hieu <hdh@lazny.tang.la>

pkgname=ivan-git
pkgver=1407.4abe99e
pkgrel=1
epoch=1
pkgdesc="A tile-graphics roguelike with limb dismembering -- Fork with x86_64 support"
arch=(i686 x86_64)
url="http://gitorious.org/ivan#more"
license=('GPL2')
depends=(boost sdl)
makedepends=(git)
provides=(ivan)
conflicts=(ivan)
source=(ivan::git+http://git.gitorious.org/ivan/ivan.git)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/ivan"
  echo "$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/ivan"

  msg "Starting waf..."

  # CC=clang CPP=clang++ CXX=clang++ # it didn't work for me, but you can try
  ./waf -p configure --prefix=/usr
}

package() {
  cd "$srcdir/ivan"

  ./waf install --destdir="$pkgdir"
}

# vim:set ts=2 sw=2 et:
