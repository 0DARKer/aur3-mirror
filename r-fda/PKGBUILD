pkgname=r-fda
pkgver=2.2.5
pkgrel=1
pkgdesc="Functional Data Analysis: as described in Ramsay, J. O. and Silverman, B. W. (2005). For the R language."
arch=('i686' 'x86_64')
url="http://cran.r-project.org/web/packages/fda/index.html"
license=("GPL2")
depends=('r' 'r-zoo')
source=(http://cran.r-project.org/src/contrib/fda_2.2.5.tar.gz)

build() {
 mkdir -p $pkgdir/usr/lib/R/library
 cd $srcdir
 R CMD INSTALL -l ../pkg/usr/lib/R/library ./fda
 rm $pkgdir/usr/lib/R/library/R.css
}
md5sums=('07aee8be159675a38153f1a0759964c4')
