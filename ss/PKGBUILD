# Maintainer: Ecmel Ercan <ecmel.ercan@gmail.com>
pkgname=ss
pkgver=1.02
pkgrel=5
pkgdesc="A batch spreadsheet for C programmers."
url="http://fog.misty.com/perry/ss/ref.html"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=()
makedepends=('groff')
optdepends=('gcc: macro support' 'gawk: html support' 
            'gnuplot: plotting support' 'netpbm: image support')
conflicts=()
replaces=()
backup=()
install=
source=("http://fog.misty.com/perry/ss/${pkgname}-${pkgver}.tar.gz"
        "http://fog.misty.com/perry/ss/man/SS.1")
md5sums=('244860420e04a079dd5360418f8fc5d7'
         '78625926fc24f72aacc8cae9299ff037')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i 's/SS="\/usr\/local\/bin\/ss"/SS="\/usr\/bin\/ss"/' SS
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 ss "$pkgdir/usr/bin/ss"
  install -Dm755 SS "$pkgdir/usr/bin/SS"
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  cd "${srcdir}"
  install -Dm644 SS.1 "$pkgdir/usr/share/man/man1/SS.1"
}

