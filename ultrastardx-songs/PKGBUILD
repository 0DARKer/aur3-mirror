pkgname=ultrastardx-songs
pkgver=1.0.0
pkgrel=3
pkgdesc="Songs for UltraStar Deluxe (USDX)."
arch=('any')
url="http://ultrastardeluxe.org/"
license=('CCPL')
depends=('ultrastardx')
makedepends=('')
groups=('usdx')
source=(http://downloads.sourceforge.net/ultrastardx/USDX-SongPackage-01.zip)
md5sums=('5900c418a20ba6fc4b5b54267bf70207')

build() { 
  cd ${srcdir}
  install -d ${pkgdir}/usr/share/ultrastardx/songs || return 1

  cp -r Songs/* ${pkgdir}/usr/share/ultrastardx/songs/

  # Removing unnecessary stuff
  find ${pkgdir} -type f -name "*icense.txt" -exec rm {} \;
}