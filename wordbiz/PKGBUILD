# Maintainer: colinkeenan at gmail dot com
pkgname=wordbiz
pkgver=1.8
pkgrel=8
pkgdesc="Internet Scrabble Club client"
arch=("x86_64" "i686")
url="http://www.isc.ro"
license=("unknown")
depends=("java-runtime")
source=("http://www.isc.ro/linux/WordBiz18linux.zip" "wordbiz" "wordbiz.desktop")
md5sums=('dd3c078f758196606e21430ac248b8d5'
         '21544a9059d8d55dbdb24511fac98644'
         'ce3ecb3e6856f506aa83e17fa8ecfad4')

package() {	
	for file in $(find WordBiz -type f); do
	    install -m 755 -D ${file} $pkgdir/opt/WordBiz/${file#WordBiz/}
	done
	install -m755 -D wordbiz $pkgdir/usr/bin/wordbiz
	install -m755 -D wordbiz.desktop $pkgdir/usr/share/applications/wordbiz.desktop
}
