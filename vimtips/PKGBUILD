# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vimtips
pkgver=2.2.2
_scriptid=5969
pkgrel=1
pkgdesc="Display a helpful tip the first time you start Vim each day"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=88"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('b820ef7e69e56277026fa9ffe7d04889'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/{doc,plugin}
    install -Dm755 ${srcdir}/doc/* ${pkgdir}/usr/share/vim/doc/ || return 1
    cp -aRf ${srcdir}/plugin/* ${pkgdir}/usr/share/vim/plugin/ || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

