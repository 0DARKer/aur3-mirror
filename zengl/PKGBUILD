# Contributor: Andru <dr.andru@gmail.com>

pkgname=zengl
pkgver=0.0.37
pkgrel=1
pkgdesc='Crossplatform 2D/3D Engine'
arch=('i686')
url="http://andru.2x4.ru/zengl.html"
license=('LGPL2')
makedepends=('fpc>=2.2')
source=(http://andru.2x4.ru/zengl/ZenGL-$pkgver-src.tar.bz2)
md5sums=('aaf2e3a633b7829aaa2f103a38247772')

build() {
  cd $srcdir/ZenGL-src

  make || return 1
  mkdir -p $pkgdir/usr/lib
  make DESTDIR=$pkgdir/usr install
}
