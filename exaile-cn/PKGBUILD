# Maintainer: Leo Zhao <zhao78977@gmail.com>

arch=('i686' 'x86_64')
depends=('exaile' 'python-chardet')
license=('MPL' 'GPL' 'LGPL')
pkgname=exaile-cn
_pkgname=exaile
pkgdesc='exaile modules for Chinese users.'
url='http://code.google.com/p/exaile-cn/'
pkgver=091231
pkgrel=1


source=(
"http://exaile-cn.googlecode.com/files/Exaile$pkgver.tar.gz"
)

md5sums=("06d18229b38ab3fb690e44a4e5216143")

build() {
cd $srcdir
cd Exaile${pkgver} || return 1

install -D _id3.py ${pkgdir}/usr/lib/exaile/xl/metadata/_id3.py || return 1
install -d ${pkgdir}/usr/share/exaile/plugins/

cp -Rf doubancovers ${pkgdir}/usr/share/exaile/plugins/ || return 1

install -D engine_unified.py ${pkgdir}/usr/lib/exaile/xl/player/engine_unified.py || return 1
install -D engine_normal.py ${pkgdir}/usr/lib/exaile/xl/player/engine_normal.py || return 1
cp -Rf LyricDisp ${pkgdir}/usr/share/exaile/plugins/ || return 1
}
 