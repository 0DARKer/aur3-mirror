pkgname=multirows-task-manager-plasmoid
pkgver=0.91
pkgrel=2
pkgdesc="plasma task manager with multirow option"
arch=('i686' 'x86_64')
url="http://www.kde-look.org/content/show.php/multirows+task+manager+by+8siem?content=83177"
license=('GPL')
depends=('kdelibs' 'kdebase-workspace')
makedepends=('cmake' 'automoc4')
source=(http://www.kolumbus.fi/kare.sars/KDE/tasks2.tar.gz)
noextract=()
md5sums=() #generate with 'makepkg -g'

build() {
 cd $startdir/src/tasks2
  pwd
  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr 
  make || return 1
  make DESTDIR="$startdir/pkg" install || return 1
}
