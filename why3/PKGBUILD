
# Contributor: Paolo Herms

pkgname=why3
pkgver=0.63
pkgrel=1
pkgdesc="The next generation of the former software verification platform Why"
arch=(x86_64 i686)
url="http://why3.gforge.inria.fr/"
license=('GPL')
depends=('gtksourceview2')
makedepends=('ocaml' 'ocaml-sqlite3')
source=(https://gforge.inria.fr/frs/download.php/28099/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir"/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install 
}

md5sums=('7e32c22fa8dbf3cdbdfafe0e71be997e')
