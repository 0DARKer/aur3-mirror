plainname=pyjnius
pkgname="python2-$plainname"
pkgver=1.0
pkgrel=1
pkgdesc='Python module to access Java class as Python class, using JNI.'
arch=('any')
url="https://github.com/kivy/$plainname"
license=('LGPL3')
depends=('java-environment' 'python2')
makedepends=('cython2')

build() {
	cd "$srcdir"
	
	msg "Connecting to GIT server..."
	
	if [[ ! -d "$plainname" ]]; then
		git clone "$url.git" --branch $pkgver
	fi
	
	msg "GIT checkout done or server timeout"
	msg "Starting build..."
	
	cd "$plainname"
	
	python2 setup.py build_ext --inplace -f
	python2 setup.py build
}

package() {
	cd "$srcdir/$plainname"
	python2 setup.py install --prefix="$pkgdir/usr"
}