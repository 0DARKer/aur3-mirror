# Maintainer: Gavin Costello <gavcos at gmail dot com>
# Contributor:
pkgname=handlebars
pkgver=1.0.rc.1
pkgrel=2
pkgdesc="Handlebars.js is an extension to the Mustache templating language created by Chris Wanstrath. Handlebars.js and Mustache are both logicless templating languages that keep the view and the code separated like we all know they should be."
arch=(any)
url="http://handlebarsjs.com"
license=('MIT')
depends=('jquery')
source=("https://github.com/downloads/wycats/handlebars.js/handlebars-${pkgver}.js" "https://github.com/downloads/wycats/handlebars.js/handlebars-${pkgver}.min.js")
md5sums=('ec44fc1fce201dba598024843be29c80'
         'ca7b72f96d9764dc06ce1e98a6d8f221')
noextract=()

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/share/handlebars"
  install -m644 "handlebars-${pkgver}.min.js" "${pkgdir}/usr/share/handlebars"
  install -m644 "handlebars-${pkgver}.js" "${pkgdir}/usr/share/handlebars"
  ln -s "/usr/share/handlebars/handlebars-${pkgver}.min.js" "${pkgdir}/usr/share/handlebars/handlebars.min.js"
  ln -s "/usr/share/handlebars/handlebars-${pkgver}.js" "${pkgdir}/usr/share/handlebars/handlebars.js"
}

# vim:set ts=2 sw=2 et:
