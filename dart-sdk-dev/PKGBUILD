# Maintainer: Claudio d'Angelis <claudiodangelis at gmail dot com>

pkgname=dart-sdk-dev
pkgver=1.6.0_dev.9.7
pkgrel=1
pkgdesc="Tools and libraries for Dart development (development channel)"
arch=(i686 x86_64)
url="https://www.dartlang.org/tools/sdk/"
license=(EPL)
provides=('dart-sdk')
conflicts=('dart-sdk' 'dart-editor')
makedepends=('unzip')

if [[ ${CARCH} = x86_64 ]]; then
	source=("http://storage.googleapis.com/dart-archive/channels/dev/release/39537/sdk/dartsdk-linux-x64-release.zip")
	md5sums=('6d9109678aad8925b35efff5391f1f21')
else
	source=("https://storage.googleapis.com/dart-archive/channels/dev/release/39537/sdk/dartsdk-linux-ia32-release.zip")
	md5sums=('67b5081891f03b261e0fe2770a1d2ad9')
fi

package() {

    cd "${srcdir}/dart-sdk"

    msg2 "Creating directory /opt/dart-sdk"
    install -dm755 "${pkgdir}"/opt/dart-sdk

    msg2 "Copying files"
    cp -a "${srcdir}"/dart-sdk/* "${pkgdir}"/opt/dart-sdk

    msg2 "Fixing permissions"
    chmod -R +r "${pkgdir}"/opt/dart-sdk
    chmod +x "${pkgdir}"/opt/dart-sdk/bin/*

    msg2 "Linking executables"
    install -dm755 "${pkgdir}"/usr/bin
    ln -s "${pkgdir}"/opt/dart-sdk/bin/pub            "${pkgdir}"/usr/bin/pub
    ln -s "${pkgdir}"/opt/dart-sdk/bin/dart           "${pkgdir}"/usr/bin/dart
    ln -s "${pkgdir}"/opt/dart-sdk/bin/docgen         "${pkgdir}"/usr/bin/docgen
    ln -s "${pkgdir}"/opt/dart-sdk/bin/dart2js        "${pkgdir}"/usr/bin/dart2js
    ln -s "${pkgdir}"/opt/dart-sdk/bin/dartfmt        "${pkgdir}"/usr/bin/dartfmt
    ln -s "${pkgdir}"/opt/dart-sdk/bin/dartanalyzer   "${pkgdir}"/usr/bin/dartanalyzer
}
