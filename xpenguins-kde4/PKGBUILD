# Maintainer: Jan <jan@next-game.de>

pkgname=xpenguins-kde4
pkgver=2.2
pkgrel=1
pkgdesc="xpenguins width KDE4 Support"
depends=('imlib')
conflicts=('xpenguins')
source=(http://linux.next-game.de/arch/$pkgname-$pkgver.tar.gz)
license=('GPL2')
arch=('i686' 'x86_64')
url="http://gitorious.org/~amalon/xpenguins/amalons-xpenguins"
md5sums=('efbb4614c49af120aa473eeca7eac317')

build() {
cd $startdir/src/$pkgname-$pkgver
./configure --prefix=/usr
make || return 1
make prefix=$startdir/pkg/usr install
}
