pkgname=haguichi
pkgver=1.0.5
_series=1.0
pkgrel=1
pkgdesc="Hamachi GUI"
arch=('i686' 'x86_64')
url="http://www.haguichi.net"
license=('GPLv2')
depends=('mono' 'gnome-sharp' 'notify-sharp-svn')
source=("http://launchpad.net/$pkgname/$_series/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('3f9910edac2c07aaec11fdc8ba0e1a35')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make DESTDIR=$pkgdir install || return 1
}
