pkgname=haguichi
pkgver=1.0.7
_series=1.0
pkgrel=1
pkgdesc="Hamachi GUI"
arch=('i686' 'x86_64')
url="http://www.haguichi.net"
license=('GPLv2')
depends=('mono' 'gnome-sharp' 'notify-sharp-svn' 'ndesk-dbus-glib')
source=("http://launchpad.net/$pkgname/$_series/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('681967589aa3eb13e84031dccf59b271')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make DESTDIR=$pkgdir install || return 1
}
