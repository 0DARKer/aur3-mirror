# Maintainer: Andreas B. Wagner <AndreasBWagner@pointfree.net>
# Contributor: scrawl <scrawl@baseoftrash.de>

pkgname=haguichi
pkgver=1.0.8
_series=1.0
pkgrel=1
pkgdesc="Hamachi GUI"
arch=('i686' 'x86_64')
url="http://www.haguichi.net"
license=('GPLv2')
depends=('mono' 'gnome-sharp' 'notify-sharp-svn' 'ndesk-dbus-glib')
source=("http://launchpad.net/$pkgname/$_series/$pkgver/+download/$pkgname-$pkgver.tar.gz")

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
}

check() {
	cd $srcdir/$pkgname-$pkgver
	make -k check
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
md5sums=('d9560553e33457440f171328a0b0ca35')
