# Contributor: scrawl <scrawl@baseoftrash.de>

pkgname=haguichi
pkgver=1.0.23
_series=1.0
pkgrel=1
pkgdesc="Hamachi GUI"
arch=('any')
url="http://www.haguichi.net"
license=('GPL2')
depends=('logmein-hamachi' 'mono' 'gnome-sharp' 'notify-sharp' 'ndesk-dbus-glib')
source=("http://launchpad.net/$pkgname/$_series/$pkgver/+download/$pkgname-$pkgver-clr4.0.tar.gz")
sha512sums=('ebb4732a48ba753c0ffe03d10ff4abd49674fff92740284669c8499805943c6deb7c7c03395ade8bde3559d7cb99fb30213b243f83740decd5292fb5b2d9b6d1')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
}

check() {
	cd $srcdir/$pkgname-$pkgver
	make -k check
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
