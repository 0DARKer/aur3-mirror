pkgname=haguichi
pkgver=1.0.25
_series=1.0
pkgrel=1
pkgdesc="Hamachi GUI"
arch=('any')
url="http://www.haguichi.net"
license=('GPL2')
depends=('logmein-hamachi' 'mono' 'gnome-sharp' 'notify-sharp' 'ndesk-dbus-glib')
source=("http://launchpad.net/$pkgname/$_series/$pkgver/+download/$pkgname-$pkgver-clr4.0.tar.gz")
sha512sums=('ecd342880c08e87f6b135d982a43c412c4ec634494804c9051ec6f50001a5d45f32ebc19d0ae78ddafd607d53ac2f64d4bbd7e31a73dcaafdf19370c11a6c9f3')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
}

check() {
	cd $srcdir/$pkgname-$pkgver
	make -k check
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
}

