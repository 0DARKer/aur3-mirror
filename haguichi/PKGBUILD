pkgname=haguichi
pkgver=1.0.4
_series=1.0
pkgrel=2
pkgdesc="Hamachi GUI"
arch=('i686' 'x86_64')
url="http://www.haguichi.net"
license=('GPLv2')
depends=('mono' 'gnome-sharp' 'notify-sharp-svn')
source=('119_118.diff' "http://launchpad.net/$pkgname/$_series/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('4387da1a7b767c986c3b246e1a25207c'
         '77630d576da07b476d01418106fd7c27')

build() {
	cd $srcdir/$pkgname-$pkgver
	patch src/MainWindow.cs ../119_118.diff
	./configure --prefix=/usr
	make DESTDIR=$pkgdir install || return 1
}
