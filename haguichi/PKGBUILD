pkgname=haguichi
pkgver=1.0.24
_series=1.0
pkgrel=1
pkgdesc="Hamachi GUI"
arch=('any')
url="http://www.haguichi.net"
license=('GPL2')
depends=('logmein-hamachi' 'mono' 'gnome-sharp' 'notify-sharp' 'ndesk-dbus-glib')
source=("http://launchpad.net/$pkgname/$_series/$pkgver/+download/$pkgname-$pkgver-clr4.0.tar.gz")
sha512sums=('69f498ce4adf4daca6903e93be7d28f00edc1b9bd987dc42d5b86635dd496a4d11b165d479ec4fe4fbb7d7cb29264fd276733bf71fb5a3decf00d0c65609d6d5')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
}

check() {
	cd $srcdir/$pkgname-$pkgver
	make -k check
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
