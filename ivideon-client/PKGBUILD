# Maintainer: Valentin Elovsky evvsoft@gmail.com
pkgname=ivideon-client
pkgver=5.6.0
pkgrel=73
pkgdesc="Ivideon client"
arch=("i686" "x86_64")
url="http://ivideon.ru/"
license=('freeware')
depends=('qt>4.8.1')

source=("http://packages.ivideon.com/ubuntu/pool/non-free/i/${pkgname}/${pkgname}_${pkgver}-${pkgrel}_i386.deb")
md5sums=('5e2782f000356f84a306efb44aaa66b5')

build() {
  cd "$srcdir"

  bsdtar xf "$srcdir/data.tar.gz"
}

package() {
  cp -dpr --no-preserve=ownership "$srcdir/usr" "$pkgdir"
  cp -dpr --no-preserve=ownership "$srcdir/opt" "$pkgdir"
}