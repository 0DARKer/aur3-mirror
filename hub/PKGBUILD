pkgname=hub
pkgver=1.5.0
pkgrel=1
pkgdesc="hub introduces git to GitHub"
arch=('any')
url="http://github.com/defunkt/hub"
depends=('git' 'ruby')
makedepends=()
license=('MIT')
groups=()
source=('http://defunkt.github.com/hub/standalone'
	'LICENSE')
md5sums=('f60de169c62371b52b2607c935800500'
         'c1e5fa6106c5bb66e1140364a34deab3')


build() {
  /bin/true
}

package() {
  cd ${srcdir}
  install -D -m755 standalone ${pkgdir}/usr/bin/${pkgname}
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
