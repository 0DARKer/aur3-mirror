# Contributor: DonVla <donvla@users.sourceforge.net>

pkgname=tabble
pkgver=0.42
pkgrel=1
pkgdesc="A small alternative X shell which presents your programs in tabs for easy launch"
arch=(i686 x86_64)
url="http://www.rillion.net/tabble/index.html"
license=('GPL')
depends=('gtk2')
makedepends=('make' 'gcc')
source=(http://www.rillion.net/tabble/$pkgname-$pkgver.tar.gz)
md5sums=('b0ed738286e7ab55cf7db2c493f6dc0b')
sha256sums=('5a1b93eb03b9c3b7842ae59ad3ab077fd383f3c8db57e84da2754de556651f73')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
# vim:set ts=2 sw=2 et:
