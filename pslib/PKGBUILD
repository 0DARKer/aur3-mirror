# Contributor: Sergio Vergara <arkanox@gmail.com>
pkgname=pslib
pkgver=0.2.7
pkgrel=1
arch=('i686')
license=('GPL')
pkgdesc="pslib is a C-library to create PostScript files on the fly"
url="http://pslib.sourceforge.net"
depends=('glibc' 'libjpeg' 'libpng' 'libtiff' 'libungif' 'perl' 'perlxml')
source=(http://heanet.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('17a6a461276fd4eb3fd12ced926aeee1')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
