post_install() {

echo "####
#  Installation done
#  change execution user in
#  /etc/conf.d/plexmediaserver/plexmediacenter.conf.d
#  Lauch the server with /etc/rc.d/plexmediaserver start
####"

}

pre_install() {
	if [ -f /etc/rc.d/plexmediaserver ]; then
		/etc/rc.d/plexmediaserver stop;
	fi;
}

pre_upgrade() {
	pre_install;
}

pre_remove() {
	pre_install;
}
