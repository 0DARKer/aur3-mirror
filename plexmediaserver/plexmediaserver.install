post_install() {

cat << "EOM"
####
#  Installation done
#  change execution user in
#  /etc/conf.d/plexmediaserver
#  Launch the server with /etc/rc.d/plexmediaserver start
####
EOM

}

pre_install() {
	if [ -f /etc/rc.d/plexmediaserver ]; then
		/etc/rc.d/plexmediaserver stop;
	fi;
}

pre_upgrade() {
	pre_install;
}

pre_remove() {
	pre_install;
}
