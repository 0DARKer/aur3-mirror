#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

PIDFILE="/var/run/plexmediaserver.pid"
PID=$(cat $PIDFILE 2> /dev/null)

#change these parameters in /etc/default/plexmediaserver
export PLEX_MEDIA_SERVER_MAX_PLUGIN_PROCS=6
export PLEX_MEDIA_SERVER_HOME=/usr/lib/plexmediaserver
export PLEX_MEDIA_SERVER_MAX_STACK_SIZE=3000
export PLEX_MEDIA_SERVER_TMPDIR=/tmp
export PLEX_MEDIA_SERVER_APPLICATION_SUPPORT_DIR="${HOME}/Library/Application Support"
. /etc/plexmediaserver.conf

export LD_LIBRARY_PATH="${PLEX_MEDIA_SERVER_HOME}"
export TMPDIR="${PLEX_MEDIA_SERVER_TMPDIR}"



case "$1" in
  start)
    stat_busy "Starting Plex media server"
    if [ -z "$PID" ]; then
	ulimit -s $PLEX_MAX_STACK_SIZE
	(cd /usr/lib/plexmediaserver; ./Plex\ Media\ Server)
      if [ $? -gt 0 ]; then
        stat_fail
        exit 1
      else
        add_daemon plexmediaserver
        stat_done
      fi
    else
      stat_fail
      exit 1
    fi
    ;;
  stop)
    stat_busy "Stopping Plex media server"
    if [ -n "$PID" ]; then
      kill $PID &> /dev/null
      if [ $? -gt 0 ]; then
        stat_fail
        exit 1
      else
        rm $PIDFILE &>/dev/null
        rm_daemon plexmediaserver
        stat_done
      fi
    else
      stat_fail
      exit 1
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"  
esac
