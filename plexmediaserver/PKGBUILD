pkgname=plexmediaserver
pkgver=0.9.7.22.511
pkgrel=10
_subver=4b5280f
pkgdesc="Plex Media Server for Linux"
url='http://www.plexapp.com'
arch=('i686' 'x86_64')
license=('closed')
depends=('avahi')
backup=('etc/conf.d/plexmediaserver')
install='plexmediaserver.install'

if [ "$CARCH" = "i686" ]; then
       _arch='i386'
       md5sums=('f41c5668b93c01d0be87021783ecf791')
elif [ "$CARCH" = "x86_64" ]; then
       _arch='amd64'
       md5sums=('472755b5a62c842b8ae8f9015c184ea3')
fi

source=("http://plex.r.worldssl.net/PlexMediaServer/${pkgver}-${_subver}/${pkgname}_${pkgver}-${_subver}_${_arch}.deb" "${pkgname}.conf.d" "${pkgname}.service" "start_pms")
md5sums+=('6005d361e69010dd3dd9cd83e0906f9e'
	  'd1914b73af239b2beed06c2df19cd733'
	  'adf36de5efb0a1b4def42be8e2ba8da4')

build() {
       ar -xv plexmediaserver_${pkgver}-${_subver}_${_arch}.deb || return 1
       tar -zxf data.tar.gz || return 1
}

package() {
       mkdir -p "${pkgdir}"/usr/local/plexmediaserver
       mkdir -p "${pkgdir}"/usr/lib/systemd/system

       cp -r usr/lib/plexmediaserver/* "${pkgdir}"/usr/local/plexmediaserver/

       install -Dm755 ../start_pms "${pkgdir}"/usr/local/plexmediaserver/
       install -Dm644 ../plexmediaserver.conf.d "${pkgdir}"/etc/conf.d/plexmediaserver
       install -Dm644 ../plexmediaserver.service "${pkgdir}"/usr/lib/systemd/system/plexmediaserver.service
}
