# Contributor: Army [uli.armbruster (the google thing)]

_pkgname=pim
pkgname=pim-git
pkgver=0.30.8820869
pkgrel=1
epoch=1
pkgdesc="A Python image viewer with vim-like keybindings"
arch=('any')
url="http://github.com/aeosynth/Pim"
license=('GPL')
depends=('pygtk')
makedepends=('git')
source=('pim::git://github.com/aeosynth/Pim.git')
md5sums=('SKIP')


pkgver() {
	cd $_pkgname
	echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

package() {
	cd ${srcdir}/${_gitname}
	install -Dm755 ${srcdir}/${_pkgname}/${_pkgname} ${pkgdir}/usr/bin/${_pkgname}
} 
