# Maintainer: Max Bruckner
pkgname=update-grub
pkgver=0.0.1
pkgrel=1
pkgdesc="Simple wrapper creating new GRUB2 configuration."
arch=('any')
url='http://packages.ubuntu.com/precise/grub2-common'
license=('GPL2')
depends=('grub-common')

package() {
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/sbin
  echo '#!/bin/sh
set -e
exec grub-mkconfig -o /boot/grub/grub.cfg "$@"' > $pkgdir/usr/sbin/update-grub
  chmod +x $pkgdir/usr/sbin/update-grub
}
