# Maintainer: John Regan <saxindustries@gmail.com>

pkgname=samsung-unified-driver-scanner
pkgver=3.00.65
pkgrel=1
pkgdesc="Unified Linux Driver for Samsung printers and scanners.  This package provides support for Samsung scanners."
arch=(i686 x86_64)
url="http://www.samsung.com"
license=('custom:samsung')
depends=('sane' 'samsung-unified-driver-base')
md5sums=('21f98bd94a75ad4d2e1dcabf6efd57c0')
source=('http://downloadcenter.samsung.com/content/DR/200911/20091117165757640/UnifiedLinuxDriver_1.00.tar.gz')
install=${pkgname}.install

build() {
  mkdir -p "${pkgdir}/usr/lib/sane/"
  mkdir -p "${pkgdir}/etc/sane.d/"

  install -m 644 "${srcdir}/cdroot/Linux/noarch/at_root/etc/sane.d/smfp.conf" \
  "${pkgdir}/etc/sane.d/smfp.conf"
  

  if [ "$CARCH" = "x86_64" ]; then
    install -m 755 "${srcdir}/cdroot/Linux/x86_64/at_root/usr/lib64/sane/libsane-smfp.so.1.0.1" \
    "${pkgdir}/usr/lib/sane/libsane-smfp.so.1.0.1"

  else
    install -m 755 "${srcdir}/cdroot/Linux/i386/at_root/usr/lib/sane/libsane-smfp.so.1.0.1" \
    "${pkgdir}/usr/lib/sane/libsane-smfp.so.1.0.1"

  fi



}
