# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=firefox-spell-cs
pkgver=3.0.9
pkgrel=1
pkgdesc="Czech spell checker files for Firefox."
arch=('i686' 'x86_64')
url="http://www.czilla.cz/doplnky/kontrola-pravopisu"
license=('GPL')
depends=('firefox>=3')
install=$pkgname.install
source=(http://ftp.czilla.cz/other/dict/cs_ascii_spell.xpi \
        http://ftp.czilla.cz/other/dict/cs_spell.xpi)

md5sums=('7cac6ff35d6b42dd76efdb2dc85a99ab'
         '194788354b7b2a27aff0cef8d3754aa5')

build() {
   cd "${srcdir}/dictionaries"

   install -D -m644 "${srcdir}/dictionaries/cs.aff" \
     "${pkgdir}/usr/share/myspell/cs.aff" || return 1
   install -D -m644 "${srcdir}/dictionaries/cs.dic" \
     "${pkgdir}/usr/share/myspell/cs.dic" || return 1
   install -D -m644 "${srcdir}/dictionaries/Cestina-ascii.aff" \
     "${pkgdir}/usr/share/myspell/cs-ascii.aff" || return 1
   install -D -m644 "${srcdir}/dictionaries/Cestina-ascii.dic"\
     "${pkgdir}/usr/share/myspell/cs-ascii.dic" || return 1
}
