# Contributor: C Anthony Risinger
pkgname=mkinitcpio-btrfs
pkgver=0.3
pkgrel=4
pkgdesc="Extensive hook for operations on a BTRFS root device"
url="http://btrfs.wiki.kernel.org"
arch=(any)
license=('BSD')
install=${pkgname}.install
depends=(mkinitcpio btrfs-progs-unstable)
source=(btrfs_hook btrfs_install)

build() {
    install -o root -g root -D ${srcdir}/btrfs_install ${pkgdir}/lib/initcpio/install/btrfs_advanced
    install -o root -g root -D ${srcdir}/btrfs_hook ${pkgdir}/lib/initcpio/hooks/btrfs_advanced
}

md5sums=('92bf33b608796b56c25b5e599245d0b1'
         'e1726df95eb05752bd21a4c6405a7ea9')
