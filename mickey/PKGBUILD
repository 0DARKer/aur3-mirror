# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=mickey
pkgver=0.0.1
pkgrel=1
pkgdesc="The world's simplest self-contained and easily reviewable Bitcoin address generator"
arch=('any')
depends=('openssl')
makedepends=('gcc')
optdepends=('qrencode: Create a QR code from private keys')
url="https://bitcointalk.org/index.php?topic=132061.msg1415456#msg1415456"
license=('AGPL3')
source=(mickey.c
        mickey.install)
sha256sums=('f2bf2c828b1d0fdbd82914436733a750294c6876f026175dbbcdd53eb9d09c75'
            'ba4ace6efddb219abd51bfc7818412a9f29565fd88bfb638d197950e010dad4b')
provides=('mickey')
conflicts=('mickey')
install=mickey.install

build() {
  cd "$srcdir"
  gcc -o mickey mickey.c -lcrypto
}

package() {
  cd "$srcdir"
  install -D -m755 mickey "${pkgdir}/usr/bin/mickey"
}
