# Author: Samu Juvonen <samu.juvonen@gmail.com>

pkgname=coquillo
pkgver=1.4
pkgrel=1
pkgdesc="Coquillo is a metadata editor utility for audio files."
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/Coquillo?content=141896"
license="GPL"
depends=('qt' 'taglib')
source=(http://cs.joensuu.fi/~sjuvonen/coquillo/$pkgver/coquillo-$pkgver-src.tar.gz)
md5sums=('10fa7d1b2899ec5b8573b2ce8ddd53ee')

build() {
	cd $startdir/src/coquillo-$pkgver/
	qmake -config release
	make || return 1
	make install INSTALL_ROOT=${pkgdir} || return 1
}

