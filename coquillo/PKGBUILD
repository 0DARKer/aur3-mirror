# Author: Samu Juvonen <samu.juvonen@gmail.com>

pkgname=coquillo
pkgver=1.1
pkgrel=4
pkgdesc="Coquillo is a metadata editor / tagger for audio files. It supports at least MP3, Ogg/Vorbis and FLAC files and sports CDDB support."
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/Coquillo?content=141896"
license="GPL"
depends=('qt' 'taglib')
source=(http://cs.joensuu.fi/~sjuvonen/coquillo/$pkgver/coquillo-$pkgver-src.tar.gz)

build() {
	cd $startdir/src/coquillo-$pkgver/
	qmake
	make || return 1
	make install INSTALL_ROOT=${pkgdir} || return 1
}

md5sums=('93f7cb6672c949219d786b2de97cb559')
