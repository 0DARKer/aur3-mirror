# Maintainer: Ner0

pkgname=diodon-bzr
pkgver=360
pkgrel=1
pkgdesc="Lightweight clipboard manager written in Vala"
arch=('i686' 'x86_64')
url="https://launchpad.net/diodon"
license=('GPL2')
depends=('gconf' 'libgee' 'libpeas' 'libunique3' 'libxtst' 'dconf' 'libappindicator3')
makedepends=('bzr' 'vala')
provides=('diodon')
conflicts=('diodon')
install=diodon.install

_bzrtrunk=lp:diodon
_bzrmod=diodon

build() {
  msg "Connecting to Bazaar server...."

  if [[ -d "$_bzrmod" ]]; then
    cd "$_bzrmod" && bzr pull "$_bzrtrunk" -r $pkgver && cd ..
    msg "The local files are updated."
  else
    bzr branch "$_bzrtrunk" "$_bzrmod" -r $pkgver
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_bzrmod-build"
  cp -rf "$_bzrmod" "$_bzrmod-build"
  cd "$_bzrmod-build"

  python2 ./waf configure --prefix=/usr --sysconfdir=/etc
  python2 ./waf build $MAKEFLAGS
}

package() {
  cd "$_bzrmod-build"
  python2 ./waf install --destdir="$pkgdir/"
}

# vim:set ts=2 sw=2 et:
