# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-fba-git
_gitname=fba-libretro
pkgver=2013.04.09_0bef219
pkgrel=1
pkgdesc="libretro implementation of FBA. (FB Alpha (Arcade))"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/fba-libretro"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')
source=('git://github.com/libretro/fba-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname/svn-current/trunk
  make -f makefile.libretro
   
}

package()
{
  mkdir -p $pkgdir/usr/lib/libretro
  install -v -m644 $srcdir/$_gitname/svn-current/trunk/fb_alpha_libretro.so $pkgdir/usr/lib/libretro/libretro-fba.so
}