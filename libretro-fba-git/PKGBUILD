# Maintainer: almostalive <almostalive2003 at gmail dot com>

pkgname=libretro-fba-git
pkgver=20120416
pkgrel=1
pkgdesc="libretro implementation of fba."
arch=('i686' 'x86_64')
url="https://github.com/twinaphex/fba-libretro"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')

_gitroot="git://github.com/twinaphex/fba-libretro.git"
_gitname="fba-libretro"

build() 
{
   cd $srcdir

   msg "Cloning fba-libretro from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   cd src-0.2.97.24/
   make -f makefile.libretro generate
   make -f makefile.libretro
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -m755 $srcdir/$_gitname/src-0.2.97.24/libretro.so $pkgdir/usr/lib/libretro/libretro-fba.so
}

