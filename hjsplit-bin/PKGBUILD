# Maintainer: H.Gökhan Sarı <hsa2@difuzyon.net>
pkgname=hjsplit-bin
pkgver=3.1
pkgrel=1
pkgdesc="HJSplit is a popular freeware program to split and recombine files."
arch=('i686')
url="http://www.hjsplit.org/"
license=('freeware')
source=(http://www.freebytesoftware.com/download/hjsplitlx.tar.gz)
md5sums=('c326bd6bdeef92240af354ae60958841')

build() {
  mkdir -p "$pkgdir"/usr/bin/
  cd "$srcdir"

  cp "$srcdir"/hjsplit "$pkgdir"/usr/bin/
}

