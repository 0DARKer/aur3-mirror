#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=relight
pkgver=2013.3
pkgrel=1
pkgdesc='Save and restore backlight settings.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/relight"
optdepends=('dialog: for relight-menu support')
source=(
  http://xyne.archlinux.ca/projects/relight/src/relight-2013.3.tar.xz
  http://xyne.archlinux.ca/projects/relight/src/relight-2013.3.tar.xz.sig
)
sha512sums=(
  82bc3e80509425ff04bb5943f7e59a160736f435a4931e25a81b5c59ac053d19dfb617822e04ccd9b600f5429fb0a1b962c0a64a5e2489deb711fb0eec929304
  0427f99e63e4811394c4fe810c764f4189b0f7f102ed5e9eee3def7e141bbfbd46a9592bccc5b1cce72dbdec1281fc3124c5c1f195c1e98d88e8356530e32dbd
)
md5sums=(
  958614cd974777e35f8dbb0a5545704f
  4465555234aafae37abab3935ff935ef
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm755 "$pkgname"-menu "$pkgdir/usr/bin/$pkgname"-menu
  install -Dm644 "$pkgname.service" "$pkgdir/usr/lib/systemd/system/$pkgname.service"
}

