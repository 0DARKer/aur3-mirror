pkgname=python-networkmanager
pkgver=0.9.8
pkgrel=1
pkgdesc="Easy communication with NetworkManager"
arch=('any')
url="https://github.com/seveas/python-networkmanager"
license=('LGPL3')
depends=('python')
source=("https://github.com/seveas/${pkgname}/archive/${pkgver}.tar.gz")
sha512sums=('fd0ac8113401e4a20b905c8ecbfd5e657c54a1f27d2e8170f3a94f7142ba7d5ee3df839991ce1473777b1cdd08786294db3ea8187b9f6d0380d2c16fd9f8d0e3')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python setup.py install --root="$pkgdir/"
}
