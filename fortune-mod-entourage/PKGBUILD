# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>

pkgname=fortune-mod-entourage
pkgver=0.2
pkgrel=1
pkgdesc="Entourage [HBO] fortune cookies"
#url="http://mod.m-redd.com"
url="http://dl.dropbox.com/u/14015956/fortune-mod/fortune-mod-entourage"
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname-$pkgver.tar.xz)
md5sums=('e3fbc900314664199a9a36e754727fb5')

build() {
  mkdir $srcdir/$pkgname-$pkgver/
  xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
  mv -i $srcdir/entourage $srcdir/$pkgname-$pkgver/
  strfile $srcdir/$pkgname-$pkgver/entourage
  install -d $pkgdir/usr/share/fortune || return 1
  install -m 644 $srcdir/$pkgname-$pkgver/entourage* $pkgdir/usr/share/fortune \
    || return 1
}

