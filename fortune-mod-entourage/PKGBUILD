pkgname=fortune-mod-entourage
_pkgname=entourage
pkgver=0.2
pkgrel=2.1
pkgdesc="Entourage [HBO] fortune cookie file"
url="http://fortunemod.tehspork.com"
arch=('any')
license=('unknown')
depends=('fortune-mod')
groups=('fortune-mods')
source=($url/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('e3fbc900314664199a9a36e754727fb5')

build() {
  cd "$srcdir"
  strfile $_pkgname $_pkgname.dat
}

package () {
  install -D -m644 $_pkgname $pkgdir/usr/share/fortune/$_pkgname
  install -D -m644 $_pkgname.dat $pkgdir/usr/share/fortune/$_pkgname.dat
}

