# Maintainier: danyf90 <daniele.formichelli@gmail.com>

pkgname=jodin3
_pkgname=JOdin3CASUAL
pkgver=r991
_pkgver=R991
pkgrel=2
pkgdesc="A java implementation of ODIN"
arch=('any')
url="http://goo.im/devs/AdamOutler/JOdin3/"
license=('GPL3')
depends=('java-runtime')
source=(
	"http://goo.im/devs/AdamOutler/JOdin3/LinuxTarballs//$_pkgname-linux-$_pkgver.tar.gz"
	"JOdin3.desktop")
sha512sums=(
	'7c06583d43b1e7d67be0761d222d38dbdc2a1f30d387d46dbb90deaa55bba6e3dfa9a92b504e25f4fecda9fb437845170038f09fc412489ba4398772bfd10ea8'
	'30aae97b6a17498d644ffdcbe5b9ae92a57f977c14d130d6cfe90790049caa52857eed93373f831db3277fb38ed23328c866be1564dc2e9e76110231f8e77a4f')

package() {
	mkdir -p $pkgdir/{opt/jodin,/usr/bin}

	cp -r app runtime $_pkgname $pkgdir/opt/jodin

	ln -s /opt/jodin/$_pkgname $pkgdir/usr/bin/jodin

	install -D JOdin3.desktop $pkgdir/usr/share/applications/JOdin3.desktop
}
