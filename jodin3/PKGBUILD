pkgname=jodin3
_pkgname=JOdin3CASUAL
_pkgbuild=1029
pkgver=r$_pkgbuild
pkgrel=1
pkgdesc="A java implementation of ODIN"
arch=('x86_64')
url="http://goo.im/devs/AdamOutler/JOdin3/"
license=('GPL3')
depends=('heimdall' 'java-runtime')
source=(
	"http://goo.im/devs/AdamOutler/JOdin3/Linux64Native//$_pkgname-Linux64-R$_pkgbuild.tar.gz"
	"JOdin3.desktop")
sha512sums=(
	'4ba8d6ebf5ac0740c15d434e693f2b32ee642d1730deb3261a1b6dedebd594b23a2815d1abe74f7eb054e60558cb8cb5be7668a0d5ac2e6fd4b642781382a406'
	'30aae97b6a17498d644ffdcbe5b9ae92a57f977c14d130d6cfe90790049caa52857eed93373f831db3277fb38ed23328c866be1564dc2e9e76110231f8e77a4f')

package() {
	mkdir -p $pkgdir/{opt/jodin,/usr/bin}

	cd var/lib/jenkins/workspace/ProjectCASUAL/trunk/X/JOdin3/dist/bundles/$_pkgname

	cp -r app runtime $_pkgname $pkgdir/opt/jodin

	ln -s /opt/jodin/$_pkgname $pkgdir/usr/bin/jodin

	install -D $srcdir/JOdin3.desktop $pkgdir/usr/share/applications/JOdin3.desktop
}
