# Contributor: Manuel Serrano <Manuel.Serrano@inria.fr>

pkgname=hop
pkgver=2.0.0
pkgrel=1
pkgdesc="a Software Development Kit for the Web"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('bigloo>=3.3a')
makedepends=('bigloo>=3.3a')
install=hop.install
url='http://hop.inria.fr'
source=(ftp://ftp-sop.inria.fr/mimosa/fp/Hop/$pkgname-$pkgver.tar.gz hop)
md5sums=('6f84bc2bf73379cd00a0fe7404b35c6a' 'c01ff06ad4faca90e6da4a2ee9b8e533')

build() {
        cd $startdir/src/$pkgname-$pkgver
        ./configure --prefix=/usr --etcdir=/etc/hop
        make || return 1
        make DESTDIR=$startdir/pkg install
    (cd $startdir/pkg/usr/bin; rm hop; ln -s hop-$pkgver hop)
}
