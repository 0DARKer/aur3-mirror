# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-pandas
pkgver=0.6.0
pkgrel=1
pkgdesc="Cross-section and time series data analysis toolkit"
arch=('i686' 'x86_64')
url="http://pandas.sourceforge.net/"
license=('BSD')
depends=('python2' 'python2-numpy' 'python2-dateutil')
makedepends=('python2-distribute' 'gcc')
optdepends=('python2-scipy: miscellaneous statistical functions'
            'python-pytables: for HDF5-based storage'
            'python2-matplotlib: for plotting'
            'scikits-statsmodels: Needed for parts of pandas.stats')
options=(!emptydirs)

source=("http://pypi.python.org/packages/source/p/pandas/pandas-${pkgver}.tar.gz")
md5sums=('6a40a77d0884bfe3b7089b2b1e0245bb')

build() {
  cd "$srcdir/pandas-$pkgver"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

