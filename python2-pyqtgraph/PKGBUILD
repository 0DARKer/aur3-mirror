pkgname=python2-pyqtgraph
pkgver=r188
pkgrel=1
pkgdesc="Scientific Graphics and GUI Library for Python"
arch=('i686' 'x86_64')
license='MIT'
url="http://luke.campagnola.me/code/pyqtgraph/"
depends=('python2-pyqt' 'python2-numpy' 'python2')
source=("http://luke.campagnola.me/code/pyqtgraph/downloads/pyqtgraph-dev-r188_pyqt.tar.gz")
md5sums=('7d61d017be89b2b8a9803ca2cb692333')

build() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/usr/lib/python2.7/site-packages/
  cp -r pyqtgraph ${pkgdir}/usr/lib/python2.7/site-packages/
}
