pkgname=python2-pyqtgraph
pkgver=0.9.7
pkgrel=1
pkgdesc="Scientific Graphics and GUI Library for Python"
arch=('i686' 'x86_64')
license='MIT'
url="http://www.pyqtgraph.org/"
depends=('python2-pyqt' 'python2-numpy' 'python2')
source=("http://www.pyqtgraph.org/downloads/pyqtgraph-${pkgver}.tar.gz")
md5sums=('53f1e9c5ad5ea52dd66d120aff2c617a')

build() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/usr/lib/python2.7/site-packages/
  cp -r pyqtgraph-${pkgver}/pyqtgraph ${pkgdir}/usr/lib/python2.7/site-packages/
}

