# Contributor: Eric Forgeot < http://ifiction.free.fr >
pkgname=inform
pkgver=6.31.1
pkgrel=1
pkgdesc="interactive fiction compiler"
arch=(i686 x86_64)
url="http://www.inform-fiction.org/"
license=('custom:"freeware"')
depends=('glibc')
makedepends=('unzip')
#provides=()
#conflicts=()
#replaces=()
#backup=()
groups=(inform)
#options=()
#install=
source=(http://ifarchive.wurb.com/if-archive/infocom/compilers/inform6/source/$pkgname-$pkgver.tar.gz)
#noextract=()
md5sums=(02e64fc13c06a888a6c0f97974e2c02c)


build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  cd $startdir/pkg/usr/bin/
  ln -sf /usr/bin/inform-6.31 inform
}
