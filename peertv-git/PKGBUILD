# Maintainer: teraflops < cprieto.ortiz@gmail.com >

pkgname=peertv-git
_gitname=peertv
pkgver=39113cb
pkgrel=1
pkgdesc="Command line tool for manage and play series from EZTV"
arch=('any')
url="https://gitorious.org/peertv"
license=('GPL3')
depends=('peerflix' 'mpv' 'sqlite' 'wget')
makedepends=('git')
provides=('peertv')
conflicts=('peertv')
optdepends=('subliminal-git: subtitles support')
source=('peertv::git+https://gitorious.org/peertv/peertv.git#branch=dev')
sha256sums=('SKIP')

pkgver() {
 cd "$srcdir/$_gitname"
git rev-parse --short HEAD
}

package() {
  cd "${srcdir}/${_gitname}"
  install -Dm755 peertv "${pkgdir}/usr/bin/${_gitname}"
  install -Dm644 peertv.bash_completion "${pkgdir}/etc/bash_completion.d/${_gitname}"
}

# vim:set ts=2 sw=2 et

