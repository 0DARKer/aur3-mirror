# Maintainer: teraflops < cprieto.ortiz@gmail.com >

pkgname=peertv-git
_gitname=peertv
pkgver=v0.0.1.r0.g16435a1
pkgrel=1
pkgdesc="Command line tool for manage and play series from EZTV"
arch=('any')
url="https://gitorious.org/peertv/peertv/"
license=('GPL3')
depends=('peerflix' 'mpv' 'sqlite' 'wget')
makedepends=('git')
provides=('peertv')
conflicts=('peertv')
optdepends=('subliminal: subtitles support')
source=('git://gitorious.org/peertv/peertv.git')
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"

  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'

}

package() {
  cd "${srcdir}/${_gitname}"

  install -Dm755 peertv "${pkgdir}/usr/bin/${_gitname}"
  install -Dm644 peertv.bash_completion "${pkgdir}/etc/bash_completion.d/${_gitname}"
}

# vim:set ts=2 sw=2 et
