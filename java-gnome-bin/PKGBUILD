# Maintainer: Dan Serban

pkgname=java-gnome-bin
pkgver=4.0.19
pkgrel=1
pkgdesc="Java bindings to the GNOME platform (including gtk, glib and glade)"
arch=(i686 x86_64)
url=http://java-gnome.sourceforge.net/
license=(GPL)
depends=(gtksourceview2 libnotify libunique gtkspell libglade java-runtime)
_fedora_repo_arch=${CARCH}
[ "${CARCH}" = "i686" ] && _fedora_repo_arch=i386

build()
{
  wget "http://download.fedora.redhat.com/pub/fedora/linux/releases/15/Everything/${_fedora_repo_arch}/os/Packages/java-gnome-4.0.19-3.fc15.${CARCH}.rpm"
  rpmextract.sh "java-gnome-4.0.19-3.fc15.${CARCH}.rpm"
  mv usr "${pkgdir}"/
}
