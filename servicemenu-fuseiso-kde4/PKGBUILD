pkgname=servicemenu-fuseiso-kde4
pkgver=0.2.0
pkgrel=2
pkgdesc="ISO mount/unmount service menu for KDE4, using FUSEISO."
arch=('i686' 'x86_64')
url="http://awen.dk/dist/kde-service-menu-fuseiso/"
license=('GPL')
makedepends=('cmake' 'automoc4')
depends=('kdebase-workspace' 'fuseiso')
source=("http://awen.dk/dist/kde-service-menu-fuseiso/kde-service-menu-fuseiso-0.2.tar.gz")
install=${pkgname}.install
md5sums=('21b8ab1211c5ee4587769aae9507371a')

build() {
    cd "${srcdir}/kde-service-menu-fuseiso-0.2"
    cmake . -DCMKE_INSTALL_PREFIX=`kde4-config --prefix`    
}

package() {
    cd "${srcdir}/kde-service-menu-fuseiso-0.2"
    make DESTDIR="${pkgdir}" install
}