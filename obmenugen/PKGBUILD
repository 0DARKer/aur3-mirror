# Contributor: Pável Varela Rodríguez [NeOnsKuLL] <neonskull@gmail.com>
pkgname=obmenugen
pkgver=0.5
pkgrel=2
_serie=0.5
_pkgrev=70
pkgdesc="Menu generator for Openbox3, based on .desktop files (statically compiled)"
url="https://launchpad.net/obmenugen"
arch=('i686' 'x86_64')
license=('GPL')
depends=(openbox)
conflicts=(obmenugen-bin)
makedepends=(dmd libphobos txt2tags)
options=('!strip' 'docs')
source=(http://launchpad.net/obmenugen/$_serie/$pkgver/+download/obmenugen-$pkgver-r$_pkgrev.tar.bz2)
md5sums=(62e61fdf62a1f20ea8ad418bb2e37f05)

[ "$CARCH" = "x86_64" ] && depends=(${depends[@]} lib32-glibc)

build() {
  cd $srcdir/obmenugen-$pkgver-r$_pkgrev
  make || return 1
  make install PREFIX=$pkgdir/usr/ || return 1
}

