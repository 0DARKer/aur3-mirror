# Maintainer: Limao Luo <luolimao+AUR@gmail.com>

pkgname=rescuetime
pkgver=2.8.6.988
pkgrel=1
pkgdesc="Time-tracking for Linux. Stable version"
arch=(i686 x86_64)
url=https://www.rescuetime.com
license=(GPL2)
depends=(qt4 xorg-xprop xprintidle)
conflicts=($pkgname-beta)
install=$pkgname.install
changelog=$pkgname.changelog

if [ $CARCH = "x86_64" ]
then
    _suffix=amd64
    sha1sums=('f9a28fd5373a38bf97239f090ae70c1cb63e5555')
else
    _suffix=i386
    sha1sums=('f63d880b499b60b27a75866faa1923d1f83772a7')
fi

source=($url/installers/rescuetime_current_$_suffix.deb)

package() {
    bsdtar -xf data.tar.gz
    install -Dm755 usr/bin/$pkgname "$pkgdir"/usr/bin/$pkgname
}
