# CPAN Name  : CPANPLUS-Dist-Build
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
# Template @ http://github.com/xenoterracide/AURpan/blob/master/perl-cpanplus-dist-build/PKGBUILD.tt
# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-cpanplus-dist-build'
pkgver='0.46'
pkgrel='1'
pkgdesc="CPANPLUS plugin to install packages that use Build.PL"
arch=('any')
url='http://search.cpan.org/dist/CPANPLUS-Dist-Build'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/CPANPLUS-Dist-Build-0.46.tar.gz')
md5sums=('1ab6d24215dec438b059dad295e07b8f')

build() {
  DIST_DIR="${srcdir}/CPANPLUS-Dist-Build-0.46"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

