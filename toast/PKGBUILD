#Maintainer: Nathan Owe <ndowens.aur at gmail dot com>

pkgname=toast
pkgver=1.480
pkgrel=2
pkgdesc="A simple and self-contained tool for managing software packages"
arch=('any')
url="http://www.toastball.net/toast/"
license=('GPL')
depends=('sh' 'perl')
optdepends=('wget')
source=(http://www.toastball.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('cf5f1349d2d9e218e8ce036e8a628ad4')


build() {
  cd "$srcdir"/$pkgname-$pkgver
    ./configure --prefix=/usr 
    make
}
package() {
  cd "$srcdir"/$pkgname-$pkgver
  make DESTDIR="$pkgdir" mandir=/usr/share/man install
}
