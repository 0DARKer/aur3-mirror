# Maintainer: Audric Schiltknecht <storm+arch@chemicalstorm.org>

pkgname=('rohc')
pkgver=1.5.0
pkgrel=1
pkgdesc="RObust Header Compression (ROHC) library"
arch=('i686' 'x86_64')
depends=('glibc')
options=('!libtool')
url="http://rohc-lib.org/"
license=('GPL')
source=("https://launchpad.net/rohc/1.5.x/${pkgver}/+download/${pkgname}-${pkgver}.tar.bz2")
md5sums=('e41e92dca39c587a0d627c371c621092')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr \
              --enable-rohc-debug=0 \
              --disable-static
  make
}

package() {

  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
