# Maintainer: Audric Schiltknecht <storm+arch@chemicalstorm.org>

pkgname=rohc
pkgver=1.6.1
pkgrel=1
pkgdesc="RObust Header Compression (ROHC) library"
arch=('i686' 'x86_64')
depends=('glibc')
options=('!libtool')
url="http://rohc-lib.org/"
license=('GPL')
source=("https://launchpad.net/rohc/1.6.x/${pkgver}/+download/${pkgname}-${pkgver}.tar.bz2")
md5sums=('cc6837bfa3897cc0c0a6bfc2b4a55829')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr \
              --enable-rohc-debug=no \
              --disable-static
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
