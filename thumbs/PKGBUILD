# Contributor: Robson Cardoso dos Santos <cardoso.rcs@gmail.com>

pkgname=thumbs
pkgver=0.64
pkgrel=1
pkgdesc="Yet another thumbnail generator."
arch=(i686)
url="http://www.cathedrallabs.org/thumbs/"
license=('GPL')
depends=('imagemagick')
optdepends=('libexif'
	    'sharutils: for thumbs logo and movie thumbnail'
	    'mpgtx'
	    'libmpeg2')
source=(http://www.cathedrallabs.org/thumbs/$pkgname-$pkgver.tar.gz)
md5sums=('e393ec19c336ec53b44d0e946540b278')

build() {
  mkdir -p ${startdir}/pkg/usr/bin
  patch -Np1 < ${startdir}/thumbs.patch
  cd $startdir/src/${pkgname}-${pkgver}/${pkgname}

  install -m755 ${pkgname} ${startdir}/pkg/usr/bin/${pkgname}
}