# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=hop-devel  
pkgver=3.0.0_pre12
_pkgver=${pkgver//_/-}
pkgrel=4
pkgdesc="A Software Development Kit for the Web"
url='http://hop.inria.fr'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('bigloo-devel>=3:4.2a_alpha14Nov14' 'sqlite')
conflicts=('hop')
provides=('hop')
install=hop.install
options=('!makeflags')
source=(ftp://ftp-sop.inria.fr/indes/fp/Hop/hop-${_pkgver}.tar.gz)
md5sums=('f7dadfadac5c4fc1df2a4ad3d521e9d8')

build() {
  cd ${srcdir}/hop-${_pkgver%-2}
  ./configure --prefix=/usr --etcdir=/etc/hop --mandir=/usr/share/man
  make 
}

package() {
  cd ${srcdir}/hop-${_pkgver%-2}
  make DESTDIR=${pkgdir} install
  cd ${pkgdir}/usr/bin; rm hop; ln -s hop-3.0.0 hop
}

