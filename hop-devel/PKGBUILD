# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=hop-devel  
pkgver=3.0.0_pre1
_pkgver=${pkgver//_/-}
pkgrel=1
pkgdesc="A Software Development Kit for the Web"
url='http://hop.inria.fr'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('bigloo>=4.1a' 'sqlite')
conflicts=('hop')
provides=('hop')
install=hop.install
options=('!makeflags')
source=(ftp://ftp-sop.inria.fr/indes/fp/Hop/hop-${_pkgver}.tar.gz)
md5sums=('2d4f2e2a9378820149f3c970fb8aaaa4')

build() {
  cd ${srcdir}/hop-${_pkgver}
  ./configure --prefix=/usr --etcdir=/etc/hop --mandir=/usr/share/man
  make clean
  make
}

package() {
  cd ${srcdir}/hop-${_pkgver}
  make DESTDIR=${pkgdir} install
  cd ${pkgdir}/usr/bin; rm hop; ln -s hop-3.0.0 hop
}

