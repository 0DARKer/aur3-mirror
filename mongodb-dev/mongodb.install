# vim: syntax=sh

show_msg(){
    true
    #nothing here at the moment, but leaving as a placeholder
}

post_install() {
  useradd -r -g daemon -d /var/state/mongodb -s /bin/bash mongodb
  chown -R mongodb:daemon /var/state/mongodb

  show_msg
}

post_upgrade() {
  chown -R mongodb:daemon /var/state/mongodb

  show_msg
}

pre_remove() {
    /etc/rc.d/mongodb stop
    userdel mongodb
}

