pkgname=leanify
pkgver=v0.4.2
pkgrel=1
pkgdesc="lightweight lossless file minifier/optimizer "
arch=('x86_64')
url="https://github.com/JayXon/Leanify"
license=('MIT')
#depends=('gtk2' 'python' 'pygtk')
source=(https://github.com/JayXon/Leanify/releases/download/v0.4.2/leanify_linux64.tgz)
#source=(https://github.com/JayXon/Leanify/archive/$pkgver.tar.gz)
md5sums=('8e57cfb818d14b942e6fda4b5d224b31')


package() {
 
  cd "$pkgdir"
    install -dm 755 "$pkgdir/usr/bin/"
    install -m755 "$srcdir/leanify" "$pkgdir/usr/bin/"

}
