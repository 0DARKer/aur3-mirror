# Contributor: Enrico Carlesso enrico at ecarlesso dot org
pkgname=geanylipsum
pkgver=0.1
pkgrel=1
pkgdesc="GeanyLipsum Plugin"
arch=('i686' 'x86_64')
url="http://frank.uvena.de/en/Geany/geanylipsum"
license=("GPL")
depends=('geany>=0.16' 'gtk2>=2.8.0')
makedepends=('intltool')
source=(http://frank.uvena.de/files/geany/$pkgname-$pkgver.tar.gz)
md5sums=(b1c02786e5589a3d773893aceee35a28)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr || return 1
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
}
