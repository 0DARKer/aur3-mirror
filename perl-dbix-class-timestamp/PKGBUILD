# PKGBUILD generated by pacpan
pkgname=perl-dbix-class-timestamp
_realname=DBIx-Class-TimeStamp
pkgver=0.12
pkgrel=1
pkgdesc="'DBIx::Class extension to update and create date and time based fields'"
arch=(i686 x86_64)
license=('perl')
url="http://search.cpan.org/~flora/DBIx-Class-TimeStamp"
options=(!emptydirs)

depends=('perl' 'perl-datetime' 'perl-dbix-class' 'perl-dbix-class-dynamicdefault')
makedepends=('perl-class-accessor-grouped' 'perl' 'perl-datetime-format-sqlite' 'perl-datetime-format-mysql' 'perl-time-warp')

#provides=('DBIx-Class-TimeStamp')
provides=('dbix-class-timestamp=0.12' 'DBIx::Class::TimeStamp=0.12' 'perl-dbix-class-timestamp=0.12')

source=(http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/DBIx-Class-TimeStamp-0.12.tar.gz)
md5sums=('cb909b9e6e43ecfe3f367e2f90f5cf92')

build() {
  _expected_dir="${srcdir}/${_realname}-${pkgver}"
  if [ -d "$_expected_dir" ]; then
    cd "$_expected_dir"
  else
    _expected_dir="${srcdir}/$(bsdtar -t -f $(basename $source) | head -n1)"
    if [ -d "$_expected_dir" ]; then
      cd "$_expected_dir"
    else
      _makefile=$(find $srcdir -iname Makefile.PL)
      if [ ! -z "$_makefile" ]; then
        _expected_dir=$(dirname $_makefile)
        if [ -d "$_expected_dir" ]; then
          cd "$_expected_dir"
        else
          echo "[1;31mERROR[0m unable to detect source directory"
          echo "[1;34m-->[0m this is often due to CPAN's lack of standard naming conventions"
          echo "[1;34m-->[0m it may be possible to fix this by adjusting the build function in the PKGBUILD"
        fi
      fi
    fi
  fi
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

