#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-calc
pkgver=1.5.1
pkgrel=5
pkgdesc="Calculator for the Mate desktop environment"
arch=('i686' 'x86_64')
license=('LGPL' 'GPL')
depends=('gtk2' 'libxml2' 'libpng' 'freetype2' 'flex' 'bison' 'pixman' 'glib2' 'pango' 'gdk-pixbuf2' 'cairo' 'atk')
makedepends=('pkgconfig' 'mate-common')
groups=('mate-extra' 'automake')
url="http://mate-desktop.org"
source=(http://pub.mate-desktop.org/releases/1.5/$pkgname-$pkgver.tar.xz autogen-automake-1.13.patch)
md5sums=('6a0082fcccc4fbc3e2bf8631e9131447'
         '65b277ee8c80aba5fe165ce5811e1598')

build()
{
cd "${srcdir}/${pkgname}-$pkgver"
cp /usr/bin/mate-autogen ./
patch < ${startdir}/autogen-automake-1.13.patch
bash autogen.sh --prefix=/usr
intltoolize --automake --copy --force
make
}


package()
{
cd "${srcdir}/${pkgname}-$pkgver"
make DESTDIR="${pkgdir}" install
}
