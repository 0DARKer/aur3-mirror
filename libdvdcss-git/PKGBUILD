# Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=libdvdcss-git
pkgver=20130405
pkgrel=1
pkgdesc="A portable abstraction library for DVD decryption. (GIT version)"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.videolan.org/libdvdcss"
makedepends=('git')
options=('!libtool')
provides=('libdvdcss')
conflicts=('libdvdcss')
source=('git://git.videolan.org/libdvdcss.git#commit=7381c95c10c30cb1086735abd1eca758c2f11209')
md5sums=('SKIP')
_gitname="libdvdcss"

pkgver() {
  date +"%Y%m%d"
}

build() {
  cd "${srcdir}/${_gitname}"

  autoreconf -if
  ./configure --prefix=/usr --disable-doc
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="${pkgdir}" install
}
