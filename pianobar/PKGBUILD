# Maintainer: Patrick Palka <patrick@parcs.ath.cx>
# Development: http://parcs.ath.cx:99/pub/patrick/to.php?pianobar

pkgname=pianobar
pkgver=2011.01.24
pkgrel=2
pkgdesc="console-based frontend for Pandora (official version)"
url="http://6xq.net/0017"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libao' 'faad2' 'libmad')
provides=('pianobar-git')
conflicts=$provides
source=(http://6xq.net/media/00/16/pianobar-$pkgver.tar.bz2)
md5sums=('9a1edfca1a56ee78590922d04d62df15')

_builddir="$srcdir/$pkgname-$pkgver"

build() {
  cd $_builddir
  make
}

package() {
  cd $_builddir
  make DESTDIR=$pkgdir PREFIX=/usr install
  _licensedir="${pkgdir}/usr/share/licenses/${pkgname}"
  install -vDm644 COPYING "${_licensedir}/COPYING"
}
