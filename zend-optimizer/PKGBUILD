pkgname=zend-optimizer
pkgver=3.3.9
pkgrel=1
pkgdesc="Zend Guard and Zend Optimizer are the industry leading solution for PHP IP protection."
arch=('i686')
url="http://www.zend.com/en/products/guard"
license=('custom')
depends=('php<5.3')
makedepends=('php')
source=(http://downloads.zend.com/optimizer/$pkgver/ZendOptimizer-$pkgver-linux-glibc23-i386.tar.gz)
md5sums=('150586c3af37fbdfa504cf142c447e57')

build() {
	SRC=$startdir/src/ZendOptimizer-$pkgver-linux-glibc23-i386/data

	mkdir -p $pkgdir/usr/lib/php/20060613/
	install -D -m644 $SRC/5_2_x_comp/ZendOptimizer.so $startdir/pkg/usr/lib/php/20060613/ || return 1
	mkdir -p $pkgdir/etc/php/conf.d/
	echo extension=ZendOptimizer.so > $startdir/pkg/etc/php/conf.d/zend_optimizer.ini
}
