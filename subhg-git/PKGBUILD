# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=subhg-git
pkgver=20130416
pkgrel=1
pkgdesc="Mercurial subrepos done right"
arch=('any')
license=('Apache')
url="https://github.com/atweiden/subhg"
depends=('mercurial')
makedepends=('git')

_gitroot='git://github.com/atweiden/subhg.git'
_gitname='subhg'

# change this if you'd like to build a different branch
_gitbranch='master'

package() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin $_gitbranch
    msg "The local files are updated."
  else
    git clone -b $_gitbranch "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  install -D -m755 subhg "${pkgdir}/usr/bin/subhg"
}
