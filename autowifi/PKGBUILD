pkgname=autowifi
pkgver=0.3
pkgrel=4
pkgdesc="Automatic wifi connection manager"
url="http://dev.archlinux.org/~thomas/autowifi/"
license=('GPL')
depends=('wpa_actiond' 'wpa_supplicant' 'dhcpcd' 'bash' 'iproute2')
arch=('any')
backup=(etc/conf.d/autowifi etc/autowifi/regexp
        etc/autowifi/networks/default etc/autowifi/generic-events)
source=(http://dev.archlinux.org/~thomas/$pkgname/$pkgname-$pkgver.tar.xz
        dhcpcd.patch
        iproute2.patch)
md5sums=('14e3febec28525bc22226ec8900c58d2'
         '73ef558b71b16b4f00bc9c1c3cadf626'
         'd462f57d36ddc698873f0cf35843906a')

build() { 
  cd $srcdir/$pkgname-$pkgver
  patch -p0 -i "$srcdir/dhcpcd.patch"
  patch -p1 -i "$srcdir/iproute2.patch"
  ./install.sh "$pkgdir"
}
