# Contributor: Jonathan Wiersma <archaur at jonw dot org>

pkgname=eclipse-dltk-ruby
pkgver=3.0M4
pkgrel=1
_pkgdate=201012120842
pkgdesc="Support for Ruby in Eclipse (stable stream)"
arch=('i686' 'x86_64')
url="http://www.eclipse.org/dltk/"
license=('EPL')
depends=("eclipse-dltk-core>=$pkgver")
optdepends=("ruby")
_mirror="http://mirror.csclub.uwaterloo.ca/eclipse"
source=("$_mirror/technology/dltk/downloads/drops/R${pkgver%%[a-zA-Z]*}/S-$pkgver-$_pkgdate/${pkgname#eclipse-}-sdk-S-$pkgver-$_pkgdate.zip")
md5sums=('af15316270a7020ee54019f6a46bb4f6')

package() {
	cd $srcdir || return 1
	install -dm755 $pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/ || return 1
	find eclipse -type f -exec install -Dm644 {} \
		$pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/{} \; || return 1
}
