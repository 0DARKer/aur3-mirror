pkgname=gobi-firmware
pkgver=1
pkgrel=2
pkgdesc="Firmware for gobi wwan chipset"
#depends=('gobi-loader')
makedepends=('cabextract')
source=("ftp://ftp.hp.com/pub/softpaq/sp48501-49000/sp48568.exe")
url="http://hp.com"
options=("!strip")
md5sums=('5e1f76c6df30f95a107f001106da49ee')
arch=('any')
license=('custom')

build() {
  cabextract sp48568.exe
  mkdir -p ${pkgdir}/lib/firmware/gobi/
  cp -r Qualcomm/QCImages/Source/Packages/* ${pkgdir}/lib/firmware/gobi/
}
