pkgname=gobi-firmware
pkgver=1
pkgrel=1
pkgdesc="Firmware for gobi wwan chipset"
#depends=('gobi-loader')
makedepends=('cabextract')
source=("ftp://ftp.hp.com/pub/softpaq/sp43501-44000/sp43936.exe")
url="http://hp.com"
options=("!strip")
md5sums=('5d9a9511845fe3c7c71a7038db7cf4a6')
arch=('i686')
license=('custom')

build() {
  cabextract sp43936.exe
  mkdir -p ${pkgdir}/lib/firmware/gobi/
  cp -r QCImages/Source/Packages/* ${pkgdir}/lib/firmware/gobi/
}
