pkgname=gobi-firmware
pkgver=1
pkgrel=3
pkgdesc="Firmware for gobi 2000 wwan chipset (un2400)"
#depends=('gobi-loader')
makedepends=('cabextract')
noextract=('sp48568.exe')
source=("ftp://ftp.hp.com/pub/softpaq/sp48501-49000/sp48568.exe")
url="http://hp.com"
options=("!strip")
md5sums=('5e1f76c6df30f95a107f001106da49ee')
arch=('any')
license=('custom')

build() {
  cabextract sp48568.exe
  mkdir -p ${pkgdir}/usr/lib/firmware/gobi/
  cp -r Qualcomm/QCImages/Source/Packages/* ${pkgdir}/usr/lib/firmware/gobi/
  cp ${pkgdir}/usr/lib/firmware/gobi/6/* ${pkgdir}/usr/lib/firmware/gobi/
}
