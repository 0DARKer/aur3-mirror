# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>

pkgname=deepin-icon-theme
pkgver=git20131114165838~70edefcef8
pkgrel=1
pkgdesc="This package is DeepinIconTheme which inherits the faenza-icon-theme."
arch=('any')
options=(!strip)
url="http://www.linuxdeepin.com"
license=('LGPL-3+')
depends=('faenza-icon-theme')
install=$pkgname.install
source=("http://mirrors.ustc.edu.cn/deepin/pool/main/d/$pkgname/${pkgname}_13.06.12+${pkgver}.tar.gz")
sha256sums=('beb16663e7ac0cb1deac7bedfdb852996299f7d541d875777c05f1edd703decf')

package() {
  cd "$srcdir/$pkgname-13.06.12+$pkgver"
  
  mkdir -p "$pkgdir/usr/share/icons"
  cp -rf Deepin "$pkgdir/usr/share/icons/Deepin"
  cp -rf Deepin-blue "$pkgdir/usr/share/icons/Deepin"
  cp -rf Deepin-sapphire "$pkgdir/usr/share/icons/Deepin"
}
