pkgname=subsync
pkgver=0.1.1
pkgrel=1
pkgdesc="Simple CLI tool written in Go, that synchronizes SubRip (srt) subtitles automatically."
arch=('i686' 'x86_64')
url=https://github.com/oblique/subsync
license=(BSD)
makedepends=('go')
provides=('subsync')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/oblique/${pkgname}/archive/v${pkgver}.tar.gz")
sha1sums=('30e479106124ca6fb38f8beb8d2e730199646193')

build() {
	export GOPATH="${srcdir}/godir"
	mkdir -p "$GOPATH"
	cd "${srcdir}/${pkgname}-${pkgver}"
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	install -D subsync "${pkgdir}/usr/bin/subsync"
}

