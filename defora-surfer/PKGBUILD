# Contributor: Calimero <calimeroteknik@free.fr>
pkgname=defora-surfer
pkgver=0.2.0
pkgrel=1
pkgdesc="The Defora lightweight webkit surfer"
arch=('i686' 'x86_64')
url="http://defora.org/os"
license=('GPL3')
depends=('defora-libsystem' 'defora-libdesktop' 'gtk2' 'libwebkit' 'gnet')
source=(http://www.defora.org/os/download/download/3341/Surfer-${pkgver}.tar.gz)
md5sums=('e1ad2be39f75edafedbc84876f97f352')

build() {
  cd "$srcdir"/Surfer-$pkgver
  sed -i 's|PREFIX="/usr/local"|PREFIX="/usr"|' config.sh
  sed -i 's|LOCALEDIR="$PREFIX/share/locale"|LOCALEDIR="$DESTDIR/$PREFIX/share/locale"|' po/gettext.sh
  make || return 1
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
