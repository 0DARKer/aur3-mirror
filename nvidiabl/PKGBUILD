# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <ulf@winkelvos.de>
pkgname=nvidiabl
pkgver=0.72
pkgrel=4
epoch=
pkgdesc="Driver to adjust display backlight on modern mobile NVidia graphics adapters."
arch=('x86_64' 'i686')
url="https://github.com/guillaumezin/nvidiabl"
license=('GPL')
depends=()
makedepends=("kernel26-headers")
optdepends=()
conflicts=(nvidia-bl)
options=()
install=nvidiabl.install
changelog=
source=(https://github.com/downloads/guillaumezin/nvidiabl/$pkgname-$pkgver-source-only.dkms.tar.gz fix-kernel32.diff)

_extramodules=extramodules-3.2-ARCH

build() {
  cd "$srcdir/dkms_source_tree/"
  patch -p1 -i "$srcdir/fix-kernel32.diff"
  make
}
  
package() {
  cd "$srcdir/dkms_source_tree/"
  MODPATH="${pkgdir}/lib/modules/${_extramodules}/"
  install -d $MODPATH
  install -m 644 -c nvidiabl.ko $MODPATH
}

# vim:set ts=2 sw=2 et:
md5sums=('c8f2d36d15f1ba7acdda042e2e148e49'
         '9df67d4bf185775bb4c5505adb458c91')
