# Maintainer: Andrew Trabo <v01d3r@gmail.com>
pkgname=peyote
pkgver=0.9.5
pkgrel=1
pkgdesc="An audio player with friendly MC-like interface"
url="http://peyote.sourceforge.net"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('python2' 'mutagen' 'gstreamer0.10-python' 'pygobject' 'pyinotify')
makedepends=()
source=("http://downloads.sourceforge.net/project/peyote/Linux/${pkgname}_${pkgver}-1.tar.bz2")
md5sums=('a3dd179168d160ef85be40e709108e52')

build() {
  cd "${srcdir}/${pkgname}_${pkgver}"
  ./configure --program-prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}_${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
