# Maintainer: Andrew Trabo <v01d3r@gmail.com>
pkgname=peyote
pkgver=0.9.5_1
pkgrel=3
pkgdesc="An audio player with friendly MC-like interface"
url="http://peyote.sourceforge.net"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('python2' 'mutagen' 'gstreamer0.10-python' 'gstreamer0.10-base-plugins' 'gstreamer0.10-good-plugins' 'pygobject' 'pyinotify')
optdepends=('gstreamer0.10-bad-plugins: for additional filters')
makedepends=()
source=("http://downloads.sourceforge.net/project/peyote/Linux/${pkgname}_${pkgver/_/-}.tar.bz2")
md5sums=('a3dd179168d160ef85be40e709108e52')

build() {
  cd "${srcdir}/${pkgname}_`echo ${pkgver}|sed s/..$//`"
  PYTHON=/usr/bin/python2 ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}_`echo ${pkgver}|sed s/..$//`"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
