# Maintainer: Josip <josipponjavic at gmail dot com>
# Contributor:

pkgname=breathe-icon-theme
pkgver=0.52~bzr147
pkgrel=1
pkgdesc="A new effort to create a set of icons mixing the modern style of KDEs "Oxygen" icons with Ubuntu's "Human" set.... without modefications..."
arch=('any')
url="https://wiki.ubuntu.com/Artwork/BreatheIconSet"
license=('Creative Common Attribution-ShareAlike 3.0 License')
conflicts=('gnome-icons-breathe')
depends=('bzr' 'inkscape' 'intltool')
builddepends=()
source=()
md5sums=()

_bzrbranch=lp:breathe-icon-set/trunk
_bzrmod=breathe-icon-set

build(){
   cd ${srcdir}

  msg "Connecting to the server...."

  if [ ! -d ./${_bzrmod} ]; then
    bzr co ${_bzrbranch} ${_bzrmod}
  else
    bzr up ${_bzrmod}
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  cd ${srcdir}/breathe-icon-set
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  ./make_throbbers.sh || return 1
}
