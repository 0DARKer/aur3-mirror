# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rack-test
pkgver=0.5.7
pkgrel=1
pkgdesc="Is a small, simple testing API for Rack apps."
arch=(any)
url="http://github.com/brynary/rack-test"
license=('MIT')
depends=('ruby' 'ruby-rack')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/rack-test-$pkgver.gem)
noextract=(rack-test-$pkgver.gem)
md5sums=('ecf0a4a5d7e6e54ad939e37ecb094c7c')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" rack-test-$pkgver.gem
}
