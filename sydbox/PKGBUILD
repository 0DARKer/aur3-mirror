pkgname=sydbox
pkgver=0.7.2
pkgrel=1
pkgdesc="ptrace based sandbox"
url="http://dev.exherbo.org/~alip/sydbox/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('pinktrace')
makedepends=('make' 'automake' 'autoconf')

source=("http://dev.exherbo.org/~alip/sydbox/${pkgname}-${pkgver}.tar.bz2")
md5sums=('36fc86d158464d765b47ac6de62c64d5')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure || return 1
    make || return 1
    make DESTDIR=${pkgdir} install
}

