pkgname=perl-pod-webserver
pkgver=3.05
pkgrel=2
pkgdesc="minimal web server to serve local Perl documentation "
arch=('i686' 'x86_64')
url="http://search.cpan.org/~ARANDAL/Pod-Webserver"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/A/AR/ARANDAL/Pod-Webserver-$pkgver.tar.gz) 
md5sums=('99f47207edf23b5adb3a607348adb8ca')

build() {
  cd  $startdir/src/Pod-Webserver-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make MAN1EXT=1p MAN3EXT=3pm || return 1
  make MAN1EXT=1p MAN3EXT=3pm DESTDIR=$startdir/pkg install || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
