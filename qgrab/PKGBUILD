
pkgname=qgrab
name=QGrab
pkgver=022
pkgdesc="Minimalistic screen grabber, no kidding it is very minimalistic - but also very lightweight."
pkgrel=1
arch=(i686 x86_64)
url="http://Qt-Apps.org/content/show.php/QGrab?content=149223"
license=(GPL)
makedepends=('cmake')
depends=('qt>=4')
options=()
source=("http://illogical.dk/spock/flywheel/Qt/${name}/${name}_${pkgver}A.tar.gz")
md5sums=('5d1e18ffe2fa3b1593abd5e2eb667daf')

build(){
  cd ${srcdir}/${name}_${pkgver}A
  qmake $name.pro
  make clean && make
}

package(){
  cd ${srcdir}/${name}_${pkgver}A
#  make DESTDIR="${pkgdir}" install
  install -D -m755 ${name} ${pkgdir}/usr/bin/qgrab || return 1
}
