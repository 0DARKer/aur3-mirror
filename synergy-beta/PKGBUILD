pkgname=synergy-beta
pkgver=1.4.2
pkgrel=1
pkgdesc="Share a single mouse and keyboard between multiple computers"
url="http://synergy-foss.org"
arch=('i686' 'x86_64')
depends=('gcc-libs' 'libxtst' 'libxinerama' 'bash')
conflicts=('synergy')
provides=('synergy')
license=('GPL2')
makedepends=('libxt' 'cmake')       # used by configure to test for libx11...
backup=('etc/synergy.conf')
source=("http://synergy.googlecode.com/files/synergy-$pkgver-Source.tar.gz" "synergys.rc" )

build() {
  cd "${srcdir}/synergy-${pkgver}-Source"

  cmake  -D CMAKE_INSTALL_PREFIX=/usr . 
  make
}

package() {
  cd "${srcdir}/synergy-${pkgver}-Source"

#  make DESTDIR="$pkgdir" install # doesn't work atm

  # install binary
  install -d "$pkgdir/usr/bin/"
  install -Dm755 synergyc $pkgdir/usr/bin/
  install -Dm755 synergys $pkgdir/usr/bin/

  # install rc.d script  and config
  install -d "${pkgdir}/etc/rc.d"
  install -Dm644 conf/synergy.conf "${pkgdir}/etc" # true
  install -Dm755 $srcdir/synergys.rc "${pkgdir}/etc/rc.d/synergys" # true
}
md5sums=('cd4e18a206d4c326de7b728256350d87'
         '8f8c01add9bf6e3ae9f37a36ca6345b6')
