post_install() {
	getent group activemq &>/dev/null || groupadd -g 989 activemq >/dev/null
	getent passwd activemq &>/dev/null || useradd -u 989 -d /opt/activemq -g activemq -s /bin/false activemq >/dev/null

	cd opt/activemq
	chown -R activemq:activemq ./data
	chmod +s ./data
	chown activemq:activemq ./bin/linux-x86-64

	echo
	echo '  -> '
	echo '  -> Edit wrapper.conf, enter the full path to the executable java'
	echo '  -> '
	echo
}
post_upgrade() {
	getent group activemq &>/dev/null || groupadd -g 989 activemq >/dev/null
	getent passwd activemq &>/dev/null || useradd -u 989 -d /opt/activemq -g activemq -s /bin/false activemq >/dev/null

	cd opt/activemq
	chown -R activemq:activemq ./data
	chmod +s ./data
	chown activemq:activemq ./bin/linux-x86-64
}


pre_remove() {
	getent passwd activemq &>/dev/null && userdel  activemq  >/dev/null
	getent group postfix  &>/dev/null && groupdel activemq  >/dev/null
}
