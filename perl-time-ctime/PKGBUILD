# Contributor: zlowly <zlowly@gmail.com>
pkgname=perl-time-ctime
_realname=Time-CTime
pkgver=99.062201
pkgrel=4
pkgdesc="Perl/CPAN Module Time::CTime - format times ala POSIX asctime"
arch=(i686 x86_64)
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
url="http://search.cpan.org/~muir/Time-modules-2006.0814/lib/Time/CTime.pm"
source=(http://search.cpan.org/CPAN/authors/id/M/MU/MUIR/modules/Time-modules-2006.0814.tar.gz)
md5sums=('790c6739f601b85654fac9ee516b18d8')
build() {
  cd ${srcdir}/Time-modules-2006.0814
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
