# Contributor: zlowly <zlowly@gmail.com>

pkgname=perl-time-ctime
pkgver=2011.0505
_realname=Time-modules
pkgrel=1
pkgdesc="Perl module for formatting times ala POSIX asctime"
arch=('any')
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
url="http://search.cpan.org/~muir/Time-modules-2006.0814/lib/Time/CTime.pm"
source=(http://search.cpan.org/CPAN/authors/id/M/MU/MUIR/modules/${_realname}-${pkgver}.tar.gz)
md5sums=('3f119591a5f1f07776feee5be63175b2')
build() {
  cd ${_realname}-${pkgver}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 
  make
}
check() {
  cd ${_realname}-${pkgver}
  make test
}
package(){  
  cd ${_realname}-${pkgver}
  make install DESTDIR=${pkgdir} 
}
