         'perl-datetime-format-strptime>=1.09' 'perl-devel-stacktrace>=1.21' 'perl-digest-hmac'
         'perl-digest-sha1' 'perl-html-parser' 'perl-http-message' 'perl-json>=2.02'
         'perl-json-any>=1.21' 'perl-libwww>=2.032' 'perl-moose>=0.9' 'perl-moosex-multiinitarg'
