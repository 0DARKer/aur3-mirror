pkgname='perl-class-unload'
pkgver='0.06'
pkgrel='1'
pkgdesc="Unload a class"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-class-inspector')

url='http://search.cpan.org/dist/Class-Unload'

source=('http://search.cpan.org/CPAN/authors/id/I/IL/ILMARI/Class-Unload-0.06.tar.gz')
md5sums=('72a3f18e578ae2e776383ed5cc4a76a3')

build() {
  DIST_DIR="${srcdir}/Class-Unload-0.06"
  export PERL_MM_USE_DEFAULT=1
  {

	cd "$DIST_DIR" &&

    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

