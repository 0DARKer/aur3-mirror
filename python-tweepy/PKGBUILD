pkgname=python-tweepy
_pypiname=tweepy
pkgver=3.2.0
pkgrel=1
pkgdesc="A Python library for accessing the entire Twitter API"
url="http://www.tweepy.org"
arch=('any')
license=('MIT')
depends=('python-simplejson' 'python-requests' 'python-requests-oauthlib' 'python-six')
makedepends=('python-setuptools' 'python-pip')
source=(https://github.com/${_pypiname}/${_pypiname}/archive/v${pkgver}.tar.gz)
sha512sums=('d1549ff846648bde59568ded09dc572f6335fe3edd58c5735c7666f4d497b5998718698a03c86adf9c137bafe61c6b27b506058c5f3da4a09f4ae86b515e9da2')

prepare() {
  cd ${_pypiname}-${pkgver}
  #sed -ri 's|(import re)|\1, uuid|g' setup.py
}

build() {
  cd ${_pypiname}-${pkgver}
  python setup.py build
}

package() {
  cd "${_pypiname}-${pkgver}"
  python setup.py install -O1 --root="${pkgdir}" --prefix=/usr
  install -Dm 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

