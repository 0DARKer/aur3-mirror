# Maintainer: DonVla <donvla@users.sourceforge.net>

pkgname=kdocker
pkgver=4.6
pkgrel=2
pkgdesc="dock any application into the system tray"
arch=('i686' 'x86_64')
url="https://launchpad.net/kdocker"
license=(GPL)
depends=('qt')
source=("http://launchpad.net/${pkgname}/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz" "kdocker-getuid.patch")
md5sums=('a8dcd1178b6502a9f813ecc016b17fdd'
         'cea02269c9f6837bfb1e3494b49eec4b')
sha256sums=('3a25682202cddbfea05618e65461570e33cd75642b40c68e02b31a12c865d406'
            '0072434f18965eb7091f3714da3a8c32c6951a985e9758b3aeb22efe80734941')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    patch -Np1 -i ${srcdir}/kdocker-getuid.patch
    qmake && make
}                                                                                                                                                                                                                                                                                                                              

package(){
    cd "${srcdir}/${pkgname}-${pkgver}"
    make INSTALL_ROOT="${pkgdir}" install
}                 
