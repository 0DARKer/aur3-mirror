# Maintainer: Ecmel Ercan <ecmel dot ercan at gmail dot com>
pkgname=postgresql-java
_major=9.2
_minor=1000
pkgver=${_major}.${_minor}
pkgrel=1
pkgdesc="PostgreSQL Java libraries"
url="http://jdbc.postgresql.org/"
arch=('any')
license=('custom')
depends=(postgresql)
makedepends=(java-environment apache-ant)
options=(!strip !zipman)
source=(http://jdbc.postgresql.org/download/postgresql-jdbc-${_major}-${_minor}.src.tar.gz)
md5sums=('4a0ea513126610a36cc769a68b8d31c1')

build() {
  cd ${srcdir}

  ant jar
}

package() {
  cd ${srcdir}

  install -m755 -d ${pkgdir}/usr/share/java
  install -m644 jars/postgresql.jar ${pkgdir}/usr/share/java/

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

