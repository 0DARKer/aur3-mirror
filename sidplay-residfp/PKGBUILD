pkgname=sidplay-residfp
pkgver=36
pkgrel=1
pkgdesc="Sidplay2 fork with improved filter emulation."
arch=('i686' 'x86_64')
url="http://sidplay-residfp.sourceforge.net/"
license=('GPL')
depends=('sidplay-residfp-libs')
makedepends=('pkgconfig' 'autoconf' 'automake')
conflicts=('sidplay2')
source=(http://www.bel.fi/~alankila/c64-sw/v$pkgver/sidplay-2.0.9+alan.tar.bz2 \
	http://www.bel.fi/~alankila/c64-sw/v$pkgver/sidplay2.ini)
#	alsa.patch)
md5sums=('999c7e0aff67e3940f6ae89fa4a3769e' \ 
	'4eed2fbaadebafc8e14918ca6c73a75f')
#	'7993150a142eeebd1707dd11995b1fc5')

build() {
  cd sidplay-2.0.9

#  patch -Np1 -i ../alsa.patch || return 1

  ./configure --prefix=/usr --mandir=/usr/man --disable-static
  make || return 1
  make DESTDIR=$pkgdir install
  mkdir -p "$startdir"/pkg/usr/share/"$pkgname"/
  install -m644 ../sidplay2.ini "$startdir"/pkg/usr/share/"$pkgname"/sidplay2.ini
}

install=${pkgname}.install
