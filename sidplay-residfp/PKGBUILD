pkgname=sidplay-residfp
pkgver=1.0.0
pkgrel=2
pkgdesc="Sidplay2 fork with improved filter emulation."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/sidplay-residfp/"
license=('GPL')
depends=('sidplay-residfp-libs>=1.0.0')
install=${pkgname}.install
source=("http://downloads.sourceforge.net/project/sidplay-residfp/sidplayfp/1.0/sidplayfp-${pkgver}.tar.gz"
        "iniconfig-h.patch")
sha256sums=('fc5754f4e7e028c3bc93170ac8087d16473815524ea462fb067158d77e2b4b01'
            '9a4f80824af66f2959132a07a7392a7af54fd3f8e90348c95f0510cf1bdd2886')

build() {
  cd ${srcdir}/sidplayfp-${pkgver}
  patch -Np1 -i ${srcdir}/../iniconfig-h.patch

#  [[ -z $(pacman -Qsq pulseaudio) ]] && \
#     sed 's|\(ac_cv_header_pulse_simple_h" == \)"yes"|\1"no"|' -i configure

  ./configure --prefix=/usr --mandir=/usr/man
  make
}

package() {
  cd sidplayfp-${pkgver}
  make DESTDIR="${pkgdir}" install
}

