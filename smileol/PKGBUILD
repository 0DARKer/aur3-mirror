#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com> 

pkgname=smileol
pkgver=120
pkgrel=1
pkgdesc="Smiles Eolianos para clientes Jabber"
arch=('any')
url="http://www.supershare.net/es/file/394880-5607901c5b.html"
license=('CoyoteWare')
makedepends=('unzip')
provides=('smileol')
source=('smileol.jisp')
md5sums=('51a481be293088cfe241b31ddd886596')
install="${pkgname}".install

package() {
  smileol=""${pkgdir}"/opt/"${pkgname}""
  cd "${srcdir}"
  mkdir -p "${smileol}"
  cp -R "${pkgname}".jisp "${smileol}"
  cd "${smileol}"
  unzip "${pkgname}".jisp
  rm "${smileol}"/smileol/.directory
}
