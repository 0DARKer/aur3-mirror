#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com> 

pkgname=smileol
pkgver=121
pkgrel=1
pkgdesc="Smiles Eolianos para clientes Jabber"
arch=('any')
url="http://elotrolado.net"
license=('CoyoteWare')
makedepends=('unzip')
provides=('smileol')
source=('smileol.jisp')
md5sums=('3461a3d6abbe67d20269d2ea80cbe810')
install="${pkgname}".install

package() {
  smileol=""${pkgdir}"/opt/"${pkgname}""
  cd "${srcdir}"
  mkdir -p "${smileol}"
  cp -R "${pkgname}".jisp "${smileol}"
  cd "${smileol}"
  unzip "${pkgname}".jisp
  rm "${smileol}"/smileol/.directory
}
