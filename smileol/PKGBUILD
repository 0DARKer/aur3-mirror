pkgname=smileol
pkgver=118
pkgrel=5
pkgdesc="Smiles Eolianos para clientes Jabber"
arch=('any')
url="http://www.supershare.net/es/file/387434-4141946ecd.html"
license=('CoyoteWare')
depends=('unzip')
provides=('smileol')
source=('http://dl.dropbox.com/u/6596386/smileol.jisp.tar.gz')
md5sums=('18fc80691ae872f5b57b289694a4332e')
install=('smileol.install')

build() {
  cd ${srcdir}
}

package() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/opt/smileol
  cp -R ${pkgname}.jisp ${pkgdir}/opt/smileol
  cd ${pkgdir}/opt/smileol
  unzip ${pkgname}.jisp
}
