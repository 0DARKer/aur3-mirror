#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com> 

pkgname=smileol
pkgver=118
pkgrel=2
pkgdesc="Smiles Eolianos para clientes Jabber"
arch=('any')
url="http://www.supershare.net/es/file/387434-4141946ecd.html"
license=('CoyoteWare')
provides=('smileol')
source=('http://dl.dropbox.com/u/6596386/smileol.jisp')
md5sums=('4d9c64710090c6accc40fb77881c397c')

build() {
  cd ${srcdir}
}

package() {
  dir="${pkgdir}/opt/smileol/"
  cd ${srcdir}
  mkdir -p ${dir}
  cp -R ${pkgname}.jisp ${dir}
  cp -R ${pkgname} ${dir}

  # Test PSI
    if test -d /usr/share/psi/iconsets/emoticons ; then
      mkdir -p ${pkgdir}/usr/share/psi/iconsets/emoticons/
      ln -s ${dir}/${pkgname}.jisp ${pkgdir}/usr/share/psi/iconsets/emoticons/
    fi
  # test PSI+
    if test -d /usr/share/psi-plus/iconsets/emoticons ; then
      mkdir -p ${pkgdir}/usr/share/psi-plus/iconsets/emoticons/
      ln -s ${dir}/${pkgname}.jisp ${pkgdir}/usr/share/psi-plus/iconsets/emoticons/
    fi
  # Test Gajim
    if test -d usr/share/gajim/data/emoticons ; then
      mkdir -p ${pkgdir}/usr/share/gajim/data/emoticons/
      ln -s ${dir}/${pkgname} ${pkgdir}/usr/share/gajim/data/emoticons/
    fi
  # Test Pidgin
    if test -d usr/share/pixmaps/pidgin/emotes/ ; then
      mkdir -p ${pkgdir}usr/share/pixmaps/pidgin/emotes/
      ln -s ${dir}/${pkgname} ${pkgdir}usr/share/pixmaps/pidgin/emotes/
    fi
}
