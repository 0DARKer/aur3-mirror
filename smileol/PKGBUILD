pkgname=smileol
pkgver=118
pkgrel=3
pkgdesc="Smiles Eolianos para clientes Jabber"
arch=('any')
url="http://www.supershare.net/es/file/387434-4141946ecd.html"
license=('CoyoteWare')
provides=('smileol')
source=('http://dl.dropbox.com/u/6596386/smileol.jisp')
md5sums=('4d9c64710090c6accc40fb77881c397c')
install=('smileol.install')

build() {
  cd ${srcdir}
}

package() {
  dir="${pkgdir}/opt/smileol"
  cd ${srcdir}
  mkdir -p ${dir}
  cp -R ${pkgname}.jisp ${dir}
  cp -R ${pkgname} ${dir}
}
