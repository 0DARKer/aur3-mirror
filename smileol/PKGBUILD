#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com> 

pkgname=smileol
pkgver=119
pkgrel=1
pkgdesc="Smiles Eolianos para clientes Jabber"
arch=('any')
url="http://www.supershare.net/es/file/394880-5607901c5b.html"
license=('CoyoteWare')
depends=('unzip')
provides=('smileol')
source=('http://dl.dropbox.com/u/6596386/smileol.jisp.tar.gz')
md5sums=('7e92730057105c968c845072e2e4d04f')
install=('smileol.install')

build() {
  cd ${srcdir}
}

package() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/opt/smileol
  cp -R ${pkgname}.jisp ${pkgdir}/opt/smileol
  cd ${pkgdir}/opt/smileol
  unzip ${pkgname}.jisp
}
