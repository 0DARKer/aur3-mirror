pkgname=ttf-nanum
pkgver=3.1
pkgrel=1
pkgdesc="Nanum series TrueType fonts"
arch=('any')
url="http://hangul.naver.com"
license=('OFL')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://cdn.naver.com/naver/NanumFont/fontfiles/NanumFont_TTF_ALL.zip)
md5sums=('bc3d31d8d288bfe720f04d4ebd36b4ab')

build() {
  cd $pkgdir

  install -d -m 755 usr/share/fonts/TTF || return 1
  install -m 644 ${srcdir}/*.ttf usr/share/fonts/TTF/ || return 1
}

