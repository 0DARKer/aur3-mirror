# CPAN Name  : URI-Find
# Maintainer: jason ryan <jasonwryan@gmail.com>
# Contributor: Caleb Cushing <xenoterracide@gmail.com>

pkgname='perl-uri-find'
_realname='URI-Find'
pkgver='20111103'
pkgrel='2'
pkgdesc="Find URIs in plain text"
arch=('any')
url='http://search.cpan.org/dist/URI-Find'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-uri>=1.00')
options=('!emptydirs')
md5sums=('7129448917d708aeaab2153a5adfbf0d')

source=("http://search.cpan.org/CPAN/authors/id/M/MS/MSCHWERN/${_realname}-${pkgver}.tar.gz")

build() {
    (
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=""               \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$srcdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$srcdir'" \
    MODULEBUILDRC=/dev/null
   
	cd "$srcdir/${_realname}-${pkgver}" 
    perl Build.PL &&
    perl Build
    )
}

package() {
	cd "$srcdir/${_realname}-${pkgver}" 
    (
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    perl Build test &&
    perl Build install;

    find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
    )
}

