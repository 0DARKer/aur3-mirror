# Maintainer: Tom Gundersen <teg@jklm.no>
pkgname="user-session-units"
pkgver=v6
pkgrel=4
pkgdesc="units for launching systemd user sessions"
url="https://github.com/sofar/user-session-units"
license=('GPL2')
arch=(any)
optdepends=('xorg-launch-helper: support socket activated X')
source=("https://github.com/sofar/$pkgname/tarball/$pkgver")

build() {
  cd "${srcdir}/sofar-${pkgname}-"*

  ./autogen.sh
  
  ./configure --prefix=/usr

   make
}

package() {
  cd "${srcdir}/sofar-${pkgname}-"*

  make DESTDIR="${pkgdir}" install
}
md5sums=('82db19811503344e03996a5bdf4d4ff3')
