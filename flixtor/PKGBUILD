# Mantainer: defendor at riseup dot net

pkgname=flixtor
pkgver=1.3
pkgrel=1
pkgdesc="Streams movies, series, videos and animes from Torrents. (similar to Popcorntime)"
arch=('x86_64')
url="http://www.flixtor.com/"
license=('GPL3')
depends=('')
source=("http://fs1.d-h.st/download/00110/CjD/Flixtor%20-%20Beta%201.3.tar.gz"
	"http://fs1.d-h.st/download/00110/1Tb/flixtor.desktop"
	"http://fs1.d-h.st/download/00110/mhd/flixtor.png")
md5sums=('99822aeb4bccecef755f7cedfd22cc57' 'b05f041f6c19d5fafae123f5565c622c' 'ec5c44c8960839a27605c088efff8182' )

_extractedfolder=Flixtor

build() {
  cd "${srcdir}/${_extractedfolder}/"
  sed -i 's/\x75\x64\x65\x76\x2E\x73\x6F\x2E\x30/\x75\x64\x65\x76\x2E\x73\x6F\x2E\x31/g' "Flixtor"
}

package() {

	cd "${srcdir}"/${_extractedfolder}/

# Create necessary folders

	install -dm755 "${pkgdir}/usr/share/${pkgname}/"
	install -dm755 "${pkgdir}/usr/bin/"
	install -dm755 "${pkgdir}/usr/share/applications/"
	install -dm755 "${pkgdir}/usr/share/pixmaps/"

# Copy files

	install -Dm755 Flixtor "${pkgdir}/usr/share/${pkgname}/"
	install -Dm644 nw.pak "${pkgdir}/usr/share/${pkgname}/"
	install -Dm644 libffmpegsumo.so "${pkgdir}/usr/share/${pkgname}/"

	ln -s "/usr/share/${pkgname}/Flixtor" "${pkgdir}/usr/bin/${pkgname}"

# .desktop file and icon

	install -Dm644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/"
	install -Dm644 "${srcdir}/${pkgname}.png" "${pkgdir}/usr/share/pixmaps/"
}