# Maintainer: Otto Sabart <seberm@gmail.com>

pkgname=sshdfilter
pkgver=1.5.5
pkgrel=1
pkgdesc="SSH brute force attack blocker."
arch=('i686' 'x84_64')
url="http://www.csc.liv.ac.uk/~greg/sshdfilter/"
license="GPL"
depends=('openssh')
makedepends=()
conflicts=()
replaces=()
backup=()
install='sshdfilter.install'
source=(http://www.csc.liv.ac.uk/~greg/$pkgname-$pkgver.tar.gz sshdfilter sshdfilterrc)
md5sums=('7a2a288806b5341a8b310ad2856a80e8'
         '2b6318f4b6676c8eab59b987ab13bbe1'
         '9bb005d035607b908a9eba1258b3877f')


build() {
cd $startdir/src/$pkgname-$pkgver

# install the script.
mkdir -p $startdir/pkg/usr/sbin/
cp source/sshdfilter.pl $startdir/pkg/usr/sbin/sshdfilter

# install configs
mkdir -p $startdir/pkg/etc/
cp $startdir/sshdfilterrc $startdir/pkg/etc/
chmod +x $startdir/pkg/etc/

# install mans
mkdir -p $startdir/pkg/usr/share/man/man{1,5}
cp man/sshdfilter.1 $startdir/pkg/usr/share/man/man1/
cp man/sshdfilterrc.5 $startdir/pkg/usr/share/man/man5/

# install the rc script
mkdir -p $startdir/pkg/etc/rc.d/
cp $startdir/src/sshdfilter $startdir/pkg/etc/rc.d/
}
