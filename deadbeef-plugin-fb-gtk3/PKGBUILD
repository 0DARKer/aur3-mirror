# Maintainer: Ananda Samaddar <ananda@samaddar.co.uk

pkgname=deadbeef-plugin-fb-gtk3
pkgver=20121012
pkgrel=1
pkgdesc="filebrowser plugin for the deadbeef audio player built with GTK3"
url="http://sourceforge.net/projects/deadbeef-fb/"
arch=('i686' 'x86_64')
license='GPL2'
depends=('gtk3' 'deadbeef')
source=("http://sourceforge.net/projects/deadbeef-fb/files/master/deadbeef-fb_20121012_src.tar.gz")
sha256sums=(c529e1c134bf1d046df6c293b920e6af08e78cba0e9f78868afacc9ccac61f2e)

build() {
  

  cd $srcdir/deadbeef-devel
  ./configure --prefix=/usr --enable-gtk3
  make
  make DESTDIR=$pkgdir install
}
