_pkgname=deadbeef-fb
pkgname=deadbeef-plugin-fb-gtk3
pkgver=20141014
pkgrel=1
pkgdesc="filebrowser plugin for the deadbeef audio player built with GTK3"
url="http://sourceforge.net/projects/deadbeef-fb/"
arch=('i686' 'x86_64')
license='GPL2'
depends=('gtk3' 'deadbeef')
source=("http://sourceforge.net/projects/${_pkgname}/files/master/${_pkgname}_${pkgver}_src.tar.gz")
sha256sums=('e24d9f12420e50dba68a6851234748787b6424b88e9654a2df8e8785d56d75be')


build() {
  cd ${_pkgname}-devel

  ./configure --prefix=/usr --disable-gtk2
  make
}

package() {
  cd ${_pkgname}-devel

  make DESTDIR=$pkgdir install
}
