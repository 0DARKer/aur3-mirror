pkgname=napi
pkgdesc="script which download subtitles for movies"
pkgver=0.16.3.1
pkgrel=2
arch=(i686 x86_64)
url="http://napi.py.googlepages.com/"
source=('http://napi.py.googlepages.com/napi.py' md5patch.diff)
license=()
depends=('python' 'p7zip')

build() { 
    cd $srcdir
    patch napi.py md5patch.diff
    install -D -m755 napi.py $pkgdir/usr/bin/napi	 
}

md5sums=('0d32feaa99b8aa81f9c8e60f9fc71de6'
         '3166cbeb1129e6908f31954511871bf7')
