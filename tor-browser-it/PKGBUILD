# Maintainer: Ubermensch <francescomarra85@gmail.com>

pkgname='tor-browser-it'
pkgver='2.2.35_rc6'
_realpkgver='2.2.35-6-dev'
_language='it'
pkgrel='1'
pkgdesc='Lets you use Tor with Firefox (+ Torbutton, NoScript, HTTPS-Everywhere) without the need to configure anything. Italian version.'
url='https://www.torproject.org/projects/torbrowser.html.it'
arch=('x86_64' 'i686')
license=('GPL')
depends=('java-environment' 'xulrunner')
install='tor-browser-it.install'
if [[ "$CARCH" == 'i686' ]]; then
	source=("https://www.torproject.org/dist/torbrowser/linux/tor-browser-gnu-linux-${CARCH}-${_realpkgver}-${_language}.tar.gz")
else
	source=("https://www.torproject.org/dist/torbrowser/linux/tor-browser-gnu-linux-${CARCH}-${_realpkgver}-${_language}.tar.gz")
fi
source+=("${pkgname}.desktop.desktop"
		"${pkgname}.png"
		"${pkgname}.sh")
md5sums=('955c793a4dc19fdb6e2ffbb8ef6c6d3f'
         'c32829eb365f08c2c3685d03bc463ebd'
         '494afbfa60fb4ce21840244cc3f7208c'
         '67bb0c1a9b622f428ca1a0cf47964795')
options=('!strip' 'emptydirs')

package() {
	cd ${srcdir}/tor-browser_it

	install -d ${pkgdir}/opt/${pkgname}/ ${pkgdir}/usr/bin/

	# Any way to use install here?
	cp -a * ${pkgdir}/opt/${pkgname}/

	# Other files
	install -Dm644 ../${pkgname}.desktop.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop.desktop
	install -Dm644 ../${pkgname}.png ${pkgdir}/usr/share/pixmaps/${pkgname}.png
	install -Dm755 ../${pkgname}.sh ${pkgdir}/usr/bin/${pkgname}
}

# vim:set ts=2 sw=2 et:
