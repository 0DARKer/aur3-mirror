# Maintainer: Luiz Rom√°rio Santana Rios <luizromario at gmail dot com>
_reponame=plasma-nm
pkgname=$_reponame-git
pkgver=b522230
pkgrel=1
pkgdesc='The new network management applet for Plasma'
arch=('i686' 'x86_64')
url='http://kde.org'
license=('GPL2')
depends=('kdebase-workspace>=4.10' 'libmm-qt-git' 'libnm-qt-git')
makedepends=('git' 'cmake')
source=("git://anongit.kde.org/${_reponame}.git")
md5sums=('SKIP')

pkgver(){
    cd $_reponame
    git describe --always | sed 's|-|.|g'
}

build(){
    cd $_reponame
    git checkout $pkgver
    cmake . -DCMAKE_INSTALL_PREFIX=$pkgdir/usr
    make -j3
}

package(){
    cd $_reponame
    make install
}
