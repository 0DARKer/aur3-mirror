pkgname=sshmnt
pkgver=1.4
pkgrel=1
pkgdesc="A utility for managing multiple sshfs profiles while attempting a more 'arch' approach than similar software"
url="http://diastopia.tk:88/gitweb/?p=sshmnt/.git"
license="GPL"
depends=('coreutils' 'fuse' 'sshfs' 'openssh' 'ncurses' 'bc')
source=(sshmnt)
md5sums=('949afd2cd7f00700aa948dca9c0a3496')
arch=('any')

build() {
  install -d "$pkgdir"/usr/bin || return 1
  install -D -m755 sshmnt "$pkgdir"/usr/bin || return 1
}
