# Contributor: grimi <grimi at poczta dot fm>

pkgname=vice-gtkglext
_pkgname=vice
pkgver=2.3
pkgrel=1
pkgdesc="A Versatile Commodore Emulator , with enabled gtkglext"
arch=('i686' 'x86_64')
license=('GPL')
url="http://vice-emu.sourceforge.net"
depends=('alsa-lib' 'gtkglext' 'gcc-libs' 'giflib' 'lame' 'libjpeg' 'libpng' 'libxrandr')
makedepends=('xorg-font-utils' 'pkg-config')
provides=("vice=$pkgver")
conflicts=('vice' 'vice-gnomeui')
replaces=('vice')
options=('!makeflags')
source=(http://downloads.sourceforge.net/project/vice-emu/releases/${_pkgname}-${pkgver}.tar.gz)
md5sums=('b48d137874daad50c087a0686cbdde34')


build() {
  cd ${_pkgname}-${pkgver}
  ./configure --prefix=/usr --enable-fullscreen --enable-gnomeui --without-pulse
  make -j1
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR=$pkgdir install
}

