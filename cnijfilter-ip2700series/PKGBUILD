# Contributor: Cyker Way <cykerway@gmail.com>

pkgname=cnijfilter-ip2700series
pkgver=3.30
pkgrel=1
pkgdesc="Canon IJ Printer Driver for Pixma IP2700 series (with cnijfilter-common330)"
url="http://support-cn.canon-asia.com/contents/CN/ZH/0100271604.html"
arch=('i686')
license=('custom')
depends=('libcups' 'popt' 'libpng')
makedepends=('rpmextract')
source=(http://gdlp01.c-wss.com/gds/6/0100002716/01/${pkgname}-${pkgver}-${pkgrel}-i386-rpm.tar.gz)
md5sums=('77a18b685c8cf884e752414066473b9a')

build() {
  cd ${pkgdir}
  rpmextract.sh ${srcdir}/${pkgname}-${pkgver}-${pkgrel}-i386-rpm/packages/cnijfilter-common-3.30-1.i386.rpm
  rpmextract.sh ${srcdir}/${pkgname}-${pkgver}-${pkgrel}-i386-rpm/packages/${pkgname}-${pkgver}-${pkgrel}.i386.rpm
  mkdir -p usr/share/licenses/${pkgname}
  mv usr/share/doc/${pkgname}-${pkgver}/* usr/share/licenses/${pkgname}
  rm -rf usr/share/doc
  chmod -R a+rX usr/
}
