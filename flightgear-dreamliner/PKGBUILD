pkgname=flightgear-dreamliner
pkgver=787
pkgrel=2
pkgdesc="Boeing 787-8 Dreamliner for FlightGear"
url="http://wiki.flightgear.org/Boeing_787-8_Dreamliner"
arch=('any')
license=('unknown')
depends=("flightgear")
source=("https://gitorious.org/fg-boeing-787-8/fg-boeing-787-8-main/archive-tarball/stable_f")

md5sums=('ee56caf3673592d226f87b36add1ac3f')


package() {
	cd "${srcdir}"
	#make DESTDIR=${pkgdir} install
	mkdir -p "${pkgdir}/usr/share/flightgear/data/Aircraft"
	cp -v -r fg-boeing-787-8-fg-boeing-787-8-main	"${pkgdir}/usr/share/flightgear/data/Aircraft/787-8"
}
