# Maintainer: Bob Pirkle <bobhenrypirkle@gmail.com>
pkgname=argon
pkgver=1.4
pkgrel=3
pkgdesc="minimalist gui package manager + update notifier, with AUR support (python gtk+)"
url="http://code.google.com/p/arch-argon/"
license=('GPL')
arch=('any')
depends=(bash cower pacaur libnotify python python-gobject)
source=(http://arch-argon.googlecode.com/git/tarballs/argon-1.4.tar.gz)

package() {
cd ${srcdir}/${pkgname}-${pkgver}
make DESTDIR="$pkgdir/" install
}

md5sums=('94758987bdc5947f58b6b94d557931e9')
