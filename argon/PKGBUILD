# Maintainer: Bob Pirkle <bobhenrypirkle@gmail.com>
pkgname=argon
pkgver=1.7
pkgrel=3
pkgdesc="lightweight GUI package manager + update notifier (with full AUR support)"
url="http://code.google.com/p/arch-argon/"
license=('GPL')
arch=('any')
depends=(bash cower pacaur libnotify python python-gobject)
source=(http://arch-argon.googlecode.com/git/tarballs/argon-1.7.tar.gz)

package() {
cd ${srcdir}/${pkgname}-${pkgver}
make DESTDIR="$pkgdir/" install
}

md5sums=('d63d8746426fd15e4a3f1e178ec19a0c')
