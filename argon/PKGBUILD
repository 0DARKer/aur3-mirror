# Maintainer: Bob Pirkle <bobhenrypirkle@gmail.com>
pkgname=argon
pkgver=1.1
pkgrel=1
pkgdesc="minimalist gui package manager + update notifier (with AUR support) for the GNOME 3 environment"
url="http://code.google.com/p/arch-argon/"
license=('GPL')
arch=('any')
depends=(bash cower pacaur libnotify python python-gobject gnome-terminal)
source=(http://arch-argon.googlecode.com/git/tarballs/argon-1.1.tar.gz)

package() {
cd ${srcdir}/${pkgname}-${pkgver}
make DESTDIR="$pkgdir/" install
}

md5sums=('3cb36bd031856ffbe4f0c35f56f7d91d')
