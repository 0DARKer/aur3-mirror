# Maintainer: Sigitas Mazaliauskas <sigisnn at gmail dot com>
# Contributor: f0x f0x@f0x.ru

pkgname=wakoopa
pkgver=2.0
pkgrel=1
pkgdesc="The Wakoopa tracker tracks what (web) apps you use."
arch=('i686' 'x86_64')
url="http://wakoopa.com/"
license=('custom')
depends=(curl libsm gtk2 libxss)
# install=$pkgname.install
_source_arch="i686"
[ "$CARCH" = "x86_64" ] && _source_arch="x86_64"

source=("http://apt.wakoopa.com/${pkgname}_${pkgver}_${_source_arch}.tar.gz" "terms.html" "wakoopa.desktop")

md5sums=('43b330f705cede71b824daca8f16f097' '660a188d06532a3e3d3a6820bd16fde0' '8c6278f8f0edd9ed2fb6cc01aaa7fca9')
[ "$CARCH" = "x86_64" ] && md5sums=('f2042e12bbdd934dae6c56788e44f9c6' '660a188d06532a3e3d3a6820bd16fde0' '8c6278f8f0edd9ed2fb6cc01aaa7fca9')

build() {
cd ${srcdir}/${pkgname}_${pkgver}_${_source_arch}

  install -D -m 755 wakoopa ${pkgdir}/usr/bin/wakoopa
  install -D -m 644 pixmaps/wakoopa_large.png ${pkgdir}/usr/share/pixmaps/wakoopa.png

  mkdir ${pkgdir}/usr/share/wakoopa/
  mkdir ${pkgdir}/usr/share/wakoopa/pixmaps/

  mv pixmaps/* ${pkgdir}/usr/share/wakoopa/pixmaps/

cd ${srcdir}
 
  install -D -m 644 wakoopa.desktop ${pkgdir}/usr/share/applications/wakoopa.desktop
  install -D -m 644 terms.html ${pkgdir}/usr/share/licenses/$pkgname/terms.html
}