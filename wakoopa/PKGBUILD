# Contributor: f0x f0x@f0x.ru

pkgname=wakoopa
pkgver=1.1.1
pkgrel=0
pkgdesc="The Wakoopa tracker tracks what (web) apps you use."
arch=('i686' 'x86_64')
url="http://wakoopa.com/"
license=('custom')
depends=(curl libsm gtk2 libxss)
# install=$pkgname.install
_source_arch="i686"
[ "$CARCH" = "x86_64" ] && _source_arch="x86_64"

source=("http://apt.wakoopa.com/${pkgname}_${pkgver}_${_source_arch}.tar.gz" "terms.html" "wakoopa.desktop")

md5sums=('4c5cf6c2f3c7cc0d3736427ce33bb6fd' '8f02b994a4c7ea059d51040710ab3497' '8c6278f8f0edd9ed2fb6cc01aaa7fca9')
[ "$CARCH" = "x86_64" ] && md5sums=('692ecdb28a1bf0099394b2539a032a1a' '8f02b994a4c7ea059d51040710ab3497' '8c6278f8f0edd9ed2fb6cc01aaa7fca9')

build() {
  cd $startdir/src/${pkgname}_${pkgver}_${_source_arch}
/bin/install -D -m 755 wakoopa  \
 $pkgdir/usr/bin/wakoopa
/bin/install -D -m 644 pixmaps/wakoopa_large.png             \
 $pkgdir/usr/share/pixmaps/wakoopa.png

  mkdir $pkgdir/usr/share/wakoopa/
  mkdir $pkgdir/usr/share/wakoopa/pixmaps/
cp pixmaps/* $pkgdir/usr/share/wakoopa/pixmaps/

 cd $startdir/src/
/bin/install -D -m 644 wakoopa.desktop \
 $pkgdir/usr/share/applications/wakoopa.desktop
/bin/install -D -m 644 terms.html         \
 $pkgdir/usr/share/licenses/$pkgname/terms.html
}

