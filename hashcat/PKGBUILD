# Maintainer: Stefan Seering <stefanarch@gmx.de>
pkgname='hashcat'
pkgver='0.37'
pkgrel='2'
pkgdesc='Multithreaded cross platform hash cracker.'
arch=('i686' 'x86_64')
url='http://hashcat.net/hashcat/'
license=('Proprietary. Run with --eula for details. The author gave explicit permission for hashcat to be packages for Archlinux on 01.11.2011.')
makedepends=('p7zip')
depends=('glibc')

build() {
  local hcURL='http://hashcat.net/files/download.php?proj=hashcat'
  local hcFile="${pkgname}-${pkgver}.7z"

  cd "${srcdir}"

  # The developers of hashcat introduced a cookie based obscurfaction to the download of hashcat as 
  # their website was under high load from leechers. Therefore downloading hashcat is a little complicated
  rm -f ./cookiefile
  wget -O /dev/null --save-cookies ./cookiefile "${hcURL}"
  wget -O "${hcFile}" --load-cookies ./cookiefile "${hcURL}"
  rm ./cookiefile

  7z x "${hcFile}"
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  rm *.exe
 
  if [ "${CARCH}" = 'x86_64' ] ; then
  	mv hashcat-cli64.bin hashcat
  else	
  	rm hashcat-cli32.bin hashcat
  fi
  rm *.bin
 
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/share/doc/${pkgname}"
  mkdir -p "${pkgdir}/etc/${pkgname}"
  
  cp hashcat "${pkgdir}/usr/bin"
  cp docs/*      "${pkgdir}/usr/share/doc/${pkgname}"
  cp -r examples "${pkgdir}/usr/share/doc/${pkgname}"
  cp -r rules     "${pkgdir}/etc/${pkgname}"
  cp -r salts     "${pkgdir}/etc/${pkgname}"
  cp -r tables    "${pkgdir}/etc/${pkgname}"

  cd "${pkgdir}"
  # the 7z archive causes the wrong file permissions to be set and the automation of pacman/makepkg wont handle it properly in this case
  find . -type d -exec chmod 755 {} \+
  find . -type f -exec chmod 644 {} \+
  chmod a+x "${pkgdir}/usr/bin/hashcat"
}

# vim:set ts=2 sw=2 et:
