pkgname=nautilus-wipe
pkgver=0.1.1
pkgrel=1
pkgdesc="Nautilus Wipe is an extension for Nautilus for securely erasing files"
license=('custom')
arch=('i686' 'x86_64')
depends=('nautilus' 'libgsecuredelete' 'gtk3' 'gconf' )
makedepends=('gnome-doc-utils' 'gconf' 'intltool' 'nautilus')
url="http://wipetools.tuxfamily.org/nautilus-wipe.html"
source=('http://download.tuxfamily.org/wipetools/releases/nautilus-wipe/nautilus-wipe-0.1.1.tar.gz')
sha1sum=('a28a2518a754866517efb4f5814bafa55a7864ef61922b327af8b547ea843470')
md5sums=('2edbacce31a0753021ccb918227d6f03')
build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR="$pkgdir/" install
}
