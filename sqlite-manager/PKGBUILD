# Maintainer: Michael Basil <michael@ashtonbrsc.co.uk>
pkgname=sqlite-manager
pkgver=0.6.8
pkgrel=1
pkgdesc="A very lightweight XULRunner application to manage all your sqlite databases."
arch=('i686 x86_64')
url="http://code.google.com/p/sqlite-manager/"
license=('MPL')
depends=(xulrunner desktop-file-utils)
source=("http://sqlite-manager.googlecode.com/files/sqlitemanager-xr-$pkgver.zip" "sqlite-manager.desktop")
noextract=()
md5sums=('52c1df686c1677ac462c7d3e365c9233'
         'e73bcfa72f817a2fb5c6464479dd6cab')
build() {
  cd "$srcdir/"
}

package() {
  mkdir -p $pkgdir/usr/lib/mrinalkant/
  mkdir -p ${pkgdir}/usr/share/applications
  xulrunner --install-app sqlitemanager-xr-$pkgver.zip $pkgdir/usr/lib/mrinalkant/
  cp ${srcdir}/sqlite-manager.desktop ${pkgdir}/usr/share/applications/
}
