# Maintainer: Michael Basil <michael@ashtonbrsc.co.uk>
pkgname=sqlite-manager
pkgver=0.7.5
pkgrel=2
pkgdesc="A very lightweight XULRunner application to manage all your sqlite databases"
arch=('i686 x86_64')
url="http://code.google.com/p/sqlite-manager/"
license=('MPL')
depends=(xulrunner desktop-file-utils)
source=("http://sqlite-manager.googlecode.com/files/sqlitemanager-xr-$pkgver-all.zip" "sqlite-manager.desktop")
noextract=()
md5sums=('1969de07461309ab156181f006927ffc'
         '182e7cb85adc87594e6bdd836d19c1f3')

build() {
  cd "$srcdir/"
}

package() {
  mkdir -p ${pkgdir}/usr/share/applications
  xulrunner --install-app sqlitemanager-xr-$pkgver-all.zip $pkgdir/usr/share/
  cp ${srcdir}/sqlite-manager.desktop ${pkgdir}/usr/share/applications/
}
