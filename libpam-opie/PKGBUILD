# Maintainer: Abakus <java5@arcor.de>
# Contributor:Stefan J. Betz <info@stefan-betz.net>
pkgname=libpam-opie
pkgver=0.21
pkgrel=2
pkgdesc="S/KEY Support for PAM"
arch=('i686' 'x86_64')
license=('GPL')
url="http://packages.debian.org/sid/libpam-opie"
source=("http://ftp.de.debian.org/debian/pool/main/libp/libpam-opie/libpam-opie_$pkgver.orig.tar.gz"
	"http://ftp.de.debian.org/debian/pool/main/libp/libpam-opie/libpam-opie_$pkgver-8.diff.gz"
	"fix-libopie-path.diff")
md5sums=('8dffef43ddbd14512171cca5c4570207'
         '8e284a707b67002999bfc8d343691698'
	 'a17930dd06620b273ae064e626460cd6')

build() {
	mkdir -p $pkgdir/lib/security
	cd $srcdir/libpam-opie-$pkgver
	patch -p1 < ../libpam-opie_$pkgver-8.diff
	patch -p1 < ../fix-libopie-path.diff
	make -C libopie
	make
	install pam_opie.so $pkgdir/lib/security/pam_opie.so
}
