# Maintainer: Xu Pan <cqpanxu@gmail.com>
pkgname=nodejs
pkgver=0.4.9
pkgrel=1
epoch=
pkgdesc="evented I/O for v8 javascript"
arch=('i686')
url="http://nodejs.org/"
license=('MIT')
groups=()
depends=('python2')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://nodejs.org/dist/node-v$pkgver.tar.gz)
noextract=()
md5sums=('e525b8b99d949bf2f031bc262c138e96')

build() {
  cd "$srcdir/node-v$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/node-v$pkgver"
  make DESTDIR="$pkgdir/" install
}

