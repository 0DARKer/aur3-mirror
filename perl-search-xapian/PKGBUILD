pkgname='perl-search-xapian'
pkgver='1.2.15.0'
pkgrel='1'
pkgdesc="Perl XS frontend to the Xapian C++ search library."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'xapian-core')
makedepends=()
url='http://search.cpan.org/dist/Search-Xapian'
source=('http://search.cpan.org/CPAN/authors/id/O/OL/OLLY/Search-Xapian-1.2.15.0.tar.gz')
md5sums=('4e217a916c6cf52ce39fbae7d463cba4')
