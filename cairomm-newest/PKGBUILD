# Maintainer: Jesus Alvarez <jeezusjr@gmail.com>

pkgname=cairomm-newest
pkgver=1.9.6
pkgrel=1
pkgdesc="C++ bindings to Cairo vector graphics library"
arch=('i686' 'x86_64')
url="http://www.cairographics.org"
license=('LGPL' 'MPL')
depends=('cairo' 'libsigc++')
makedepends=('pkgconfig')
provides=("cairomm=${pkgver}")
conflicts=('cairomm')
options=('!libtool' '!emptydirs')
source=(http://www.cairographics.org/releases/cairomm-${pkgver}.tar.gz)
sha256sums=('b7a377273b5369118a72f2802f4fd58419db45dae89bd7d0cf2e657e220765f3')

build() {
    cd "${srcdir}/cairomm-${pkgver}"
    ./configure --prefix=/usr
    make
}

package() {
    cd $srcdir/cairomm-$pkgver
    make DESTDIR=$pkgdir install
}
