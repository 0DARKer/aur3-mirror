# Maintainer: Vincent Prelat <prelatv [at] gmail.com>

pkgname=perlmagick
pkgver=6.6.7.7
pkgrel=1
pkgdesc="Objected-oriented Perl interface to ImageMagick"
url="http://www.imagemagick.org/script/perl-magick.php"
arch=('i686' 'x86_64')
license=('custom')
depends=('imagemagick' 'perl')
_revision=6.6.7-7
source=(ftp://ftp.imagemagick.org/pub/ImageMagick/ImageMagick-$_revision.tar.xz)
md5sums=('b5627a63c6ff723df6b192634079c7c6')

build() {
  cd $startdir/src/ImageMagick-$_revision/PerlMagick
  
  perl Makefile.PL || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  # Man already exist with Imagmagick
  rm $startdir/pkg/usr/share/man/man3/Image::Magick.3pm || return 1

}

