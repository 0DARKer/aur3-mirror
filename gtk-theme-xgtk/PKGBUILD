# Mantainer: dmiranda at gmail dot com

pkgname=gtk-theme-xgtk
pkgver=2014.06.03
pkgrel=1
pkgdesc="Mac OS X Yosemite theme for gtk.
To use it you should have gtk 3.12 or higher."
arch=('any')
url="http://fc09.deviantart.net/fs71/f/2014/183/b/7/xgtk_by_kxmylo-d7oyqvg.zip"
license=('GPL3')
depends=('gtk-engine-murrine')
_sourcefile=xgtk_by_kxmylo-d7oyqvg.zip
source=(http://fc09.deviantart.net/fs71/f/2014/183/b/7/xgtk_by_kxmylo-d7oyqvg.zip)
md5sums=('0ef2f77c6fa0e0f34d3def21df4318f8')

noextract=("${source[@]%%::*}")
_foldername=xgtk_by_kxmylo-d7oyqvg

package() {
	mkdir -p ${pkgdir}/usr/share/themes/
	mkdir "${_foldername}"
	unzip "${_sourcefile}" -d ${_foldername}
	cp -rv ${srcdir}/${_foldername}/* ${pkgdir}/usr/share/themes/
}
