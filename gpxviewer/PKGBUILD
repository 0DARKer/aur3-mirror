# Maintainer: jose <jose1711 [at] gmail (dot) com>
# Contributor: David Dent <thewinch@gmail.com>

pkgname=gpxviewer
arch=('i686' 'x86_64')
pkgver=0.2.0
pkgrel=3
pkgdesc="a simple program to visualize a gpx file"
license=('GPL-2')
url="http://blog.sarine.nl/gpx-viewer/"
depends=('vala>=0.7' 'libchamplain>=0.4.0' 'libxml2' 'intltool' 'gdl')
source=("http://edge.launchpad.net/gpx-viewer/trunk/${pkgver}/+download/gpx-viewer-${pkgver}.tar.gz" 'gpxviewer.desktop')
md5sums=('fb84bc2656685b20221b3a2050d90445'
         '8d5ed2f4f1f26a60d078a77f9fd5f2a3')

build() {
cd $srcdir/gpx-viewer-${pkgver}
sed -i -e 's/champlain-gtk-0.4/champlain-gtk-0.8/' configure.ac
sed -i -e 's/champlain-0.4/champlain-0.8/' configure.ac
/usr/bin/autoconf
./configure --prefix=/usr
make
}

package() {
cd $srcdir/gpx-viewer-${pkgver}
make DESTDIR=$pkgdir install
}
