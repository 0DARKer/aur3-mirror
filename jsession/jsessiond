#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

pid=`pidof -x -o %PPID jsessiond`
case "$1" in
  start)
    stat_busy "Starting jsessiond"
    [ -z "$pid" ] && jsessiond &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon jsessiond
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping jsessiond"
    [ ! -z "$pid" ] && kill $pid &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon jsessiond
      stat_done
    fi
    ;;
  *)
    echo "usage: $0 {start|stop}"
esac
exit 0
