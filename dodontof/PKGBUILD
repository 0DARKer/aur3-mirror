# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Hiroki Umezaki <raa0121@gmail.com>
pkgname=dodontof
pkgver=1.35.00
pkgrel=1
epoch=
pkgdesc="DodontoF is online RPG session site, Anyone can use."
arch=('any')
url="http://www.dodontof.com/"
license=('GPL')
groups=()
depends=('ruby' 'apache')
makedepends=('unzip')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://www.dodontof.com/DodontoF/DodontoF_Ver.${pkgver}.zip"
        DodontoFServer.patch
        WebCameraCaptureImageUploader.patch
        src_ruby_config.patch
        )
noextract=('[source].zip')

md5sums=('d66ff132c6149c22afdbbd3e8de9d661'
         'c67b0e7ab390413a742f54ed9b7c6754'
         'd95cdcc3576810b7b3d039d70239c200'
         'e69d8bd07e41e08144dab2786fde2ad1') #gerate with 'makepkg -g'

build() {
  mkdir -p ${pkgdir}/srv/http
  patch -p0 $srcdir/DodontoF/DodontoFServer.rb < DodontoFServer.patch
  patch -p0 $srcdir/DodontoF/WebCameraCaptureImageUploader.rb < WebCameraCaptureImageUploader.patch
  patch -p0 $srcdir/DodontoF/src_ruby/config.rb < src_ruby_config.patch
  cd "$srcdir/DodontoF"
  chmod 755 DodontoFServer.rb WebCameraCaptureImageUploader.rb saveData imageUploadSpace imageUploadSpace/smallImages saveDataTempSpace fileUploadSpace replayDataUploadSpace
  chmod 666 log.txt log.txt.0
  cd ..
  mv DodontoF/saveData .
  mv DodontoF/imageUploadSpace .
  mv DodontoF ${pkgdir}/srv/http/DodontoF
  mv imageUploadSpace ${pkgdir}/srv/http/imageUploadSpace
  mv saveData ${pkgdir}/srv/saveData
  chown -R http:http ${pkgdir}/srv/http/DodontoF ${pkgdir}/srv/http/imageUploadSpace ${pkgdir}/srv/saveData
}

# vim:set ts=2 sw=2 et:
