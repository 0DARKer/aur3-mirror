# Contributor: reMiND <detanator@gmail.com>

pkgname=aqemu
pkgver=0.8.0
pkgrel=2
pkgdesc="QEMU GUI written in Qt4"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/aqemu/"
license=('GPL2')
depends=('qt>4.2.2' 'openssl')
optdepends=('libvncserver')
#cmake check libvncserver automatically; for building without libvncserver
#uncomment -DWITHOUT_EMBEDDED_DISPLAY=on
makedepends=('cmake')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('d6cbe7955eeef4d2285b198cd1b32064')
install=aqemu.install

build() {

  cd $srcdir/$pkgname-0.8

  cmake . \
	-DCMAKE_INSTALL_PREFIX=/usr/
#	-DWITHOUT_EMBEDDED_DISPLAY=on

  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
