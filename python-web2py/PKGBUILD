# Maintainer: Marcelo Alaniz 
# Contributor: Marcelo Alaniz 
pkgname=python-web2py
pkgver=1.76.3
pkgrel=1
pkgdesc="Web2py the great web Framework in python"
arch=('i686' 'x86_64')
license=('GPL2')
#install=web2py.install
url="http://www.web2py.com"
dependes=()
optdepends=('python: Python 2.6 branch' 'python25: Python 2.6 branch')
makedepends=('unzip')
source=("http://www.web2py.com/examples/static/web2py_src.zip")
md5sums=('f894d3a9fc50654f551dd4b2271cbce3')

build() {
    cp -Rf $srcdir/web2py /opt
    echo "#!/bin/bash"                                                  > /usr/bin/web2py
    echo "python /opt/web2py/web2py.py" >> /usr/bin/web2py
    chmod a+x /usr/bin/web2py
}
