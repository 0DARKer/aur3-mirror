# Maintainer: Nicolas Hureau <nh@kalenz.fr>

pkgname=darm-git
pkgver=20130330
pkgrel=1
pkgdesc="A disassembler written in C for the ARMv7 instruction set."
arch=("i686" "x86_64")
url="https://github.com/jbremer/darm"
license=("BSD")
depends=()
makedepends=("git")
provides=("darm")

_gitroot="https://github.com/jbremer/darm.git"
_gitname="darm"

build() {
  cd "$srcdir"

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
  else
    git clone "$_gitroot" "$_gitname"
  fi

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make
}

package() {
  mkdir -p "$pkgdir/usr/lib/"
  cp "$srcdir/$_gitname-build/libdarm.a" "$pkgdir/usr/lib/"
  cp "$srcdir/$_gitname-build/libdarm.so" "$pkgdir/usr/lib/"

  mkdir -p "$pkgdir/usr/include/darm/"
  cp "$srcdir/$_gitname-build/darm.h" "$pkgdir/usr/include/darm/"
  cp "$srcdir/$_gitname-build/armv7-tbl.h" "$pkgdir/usr/include/darm/"
}

# vim:set ts=2 sw=2 et:
