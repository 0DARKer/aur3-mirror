# Maintainer: Michael Williams <draringi@draringi.net>
# Contributor: onny <onny@project-insanity.org>

pkgname=libwebsockets
pkgver=1.22
pkgrel=1
pkgdesc="A c websockets server library."
depends=('openssl')
arch=('i686' 'x86_64')
url="http://git.warmcat.com/cgi-bin/cgit/libwebsockets/"
license=('LGPL')
source=("http://git.warmcat.com/cgi-bin/cgit/libwebsockets/snapshot/libwebsockets-1.22-chrome26-firefox18.tar.gz")
md5sums=('6aa080ff906dcb3aff3ae865fb807ca4')


build() {
	cd "$srcdir/${pkgname}-${pkgver}-chrome26-firefox18"
    ./autogen.sh
	./configure --prefix=/usr --enable-openssl --enable-libcrypto 
	make
}
package () {
	cd "$srcdir/${pkgname}-${pkgver}-chrome26-firefox18"
	make DESTDIR="$pkgdir" install
}
