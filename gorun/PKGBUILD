# Maintainer: Alexander Rødseth <rodseth@gmail.com>

pkgname=gorun
pkgver=19
pkgrel=1
pkgdesc="Program to run Go programs as if they were scripts"
arch=('x86_64' 'i686')
url="http://launchpad.net/gorun/"
license=('GPL3')
makedepends=('go')
options=(!strip)
source=("gorun.tgz::http://bazaar.launchpad.net/~niemeyer/$pkgname/trunk/tarball/$pkgver")
sha256sums=('c17e741792f67d25c963e3b424230a8c236d9eb917936176cd838204b4583dc6')

build() {
  cd "$srcdir/~niemeyer/$pkgname/trunk"
  go build -o $pkgname
}

package() {
  cd "$srcdir/~niemeyer/$pkgname/trunk"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}

# vim:set ts=2 sw=2 et:
