# $Id: PKGBUILD 74137 2010-03-30 16:45:11Z ibiru $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-icon-theme-extras
pkgver=2.30.0
pkgrel=1
pkgdesc="Extra icons for default icon theme for GNOME2"
arch=(any)
depends=('gnome-icon-theme')
makedepends=('intltool')
url="http://www.gnome.org"
license=('GPL')
install=gnome-icon-theme-extras.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.30/${pkgname}-${pkgver}.tar.bz2)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
md5sums=('8659c66345a44562ae1484e2d4fadc24')
