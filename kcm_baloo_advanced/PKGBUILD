# Maintainer: sxe <sxxe@gmx.de>

pkgname=kcm_baloo_advanced
_pkgname=baloo-kcmadv
pkgver=0656135
pkgrel=1
pkgdesc="Advanced KCM module for baloo file"
url="https://gitorious.org/baloo-kcmadv"
arch=('i686' 'x86_64')
license=('GPL')
depends=('baloo' )
makedepends=('cmake' 'automoc4' 'git')
source=("git://gitorious.org/$_pkgname/$_pkgname.git")
md5sums=('SKIP')

pkgver() {
  #date +%Y%m%d
  cd "$_pkgname"
  git describe --always --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g;s/^wine.//'
}

prepare() {
  mkdir -p "$srcdir/build"
}

build() {
  cd "$srcdir/build"

  cmake ../$_pkgname \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=DebugFull
  make
}

package() {
  cd "$srcdir/build"
  make DESTDIR="${pkgdir}" install
}
