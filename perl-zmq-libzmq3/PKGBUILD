pkgname='perl-zmq-libzmq3'
pkgver='1.15'
pkgrel='1'
pkgdesc="A libzmq 3.x wrapper for Perl"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-task-weaken' 'perl-zmq-constants' 'zeromq>=4.0.3')
makedepends=('perl-devel-checklib>=0.4')
checkdepends=('perl-test-fatal' 'perl-test-requires' 'perl-test-tcp>=1.08')
url='http://search.cpan.org/dist/ZMQ-LibZMQ3'
source=('http://search.cpan.org/CPAN/authors/id/D/DM/DMAKI/ZMQ-LibZMQ3-1.15.tar.gz')
md5sums=('70a80847816f04dc28831c65aa9863e5')
sha512sums=('0cc22dc96207e725931b0d9444c92bfba76829e4d3674a945961f9372b34f43095475bac3c8be7e9a5dbe3af515310f77c882a241959f8d9b22a9746bd1299ca')
_distdir="ZMQ-LibZMQ3-1.15"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

