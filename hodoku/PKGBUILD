pkgname=hodoku
pkgver=2.1.1
pkgrel=1
pkgdesc="Sudoku generator/solver/analyzer"
url="http://hodoku.sourceforge.net/en/index.php"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('java-runtime')
source=(http://downloads.sourceforge.net/project/hodoku/hodoku/hodoku_${pkgver}/hodoku.jar hodoku.sh)
md5sums=('79f523683f6da1d8123f9d98c408e707'
         'a1876a6d74a875cf0f5be22516d29685')
build() {
  install -d -m 0755 ${pkgdir}/usr/bin
  install -m 0755 hodoku.sh ${pkgdir}/usr/bin/hodoku	
  install -d -m 0755 ${pkgdir}/opt/hodoku
  install -m 0755 hodoku.jar ${pkgdir}/opt/hodoku/	
}

