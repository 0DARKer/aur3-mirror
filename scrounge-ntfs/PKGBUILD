license=('BSD')
groups=()
depends=()
makedepends=('automake','autoconf')
provides=()
conflicts=()
replaces=()
backup=()
install=
source=(http://memberwebs.com/stef/software/scrounge/$pkgname-$pkgver.tar.gz)
