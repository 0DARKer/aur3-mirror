# Contributor: Florian Richter <Florian_Richter@gmx.de>
pkgname=pythonmagick
pkgver=0.9.1
pkgrel=1
pkgdesc="ImageMagick for Python"
arch=(i686)
url="http://www.imagemagick.org/"
license=('custom')
depends=(boost python)
makedepends=()
provides=()
source=(http://www.imagemagick.org/download/python/PythonMagick-$pkgver.tar.gz)
md5sums=('5d22f146eb6af0d8ad9b84fa1d4ee75c')

build() {
  cd $startdir/src/PythonMagick-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
