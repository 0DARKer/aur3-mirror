# Maintainer: Michael Schubert <mschu.dev at gmail>
# Contributor: Florian Richter <Florian_Richter@gmx.de>

pkgname=pythonmagick
pkgver=0.9.3
pkgrel=1
pkgdesc="PythonMagick provides object-oriented Python bindings for the ImageMagick library"
arch=('i686' 'x86_64')
url="http://www.imagemagick.org/"
license=('custom')
depends=('boost' 'python2' 'imagemagick')
makedepends=('perl' 'automake')
source=("http://www.imagemagick.org/download/python/PythonMagick-$pkgver.tar.gz")
md5sums=('76b3c2a3609b936c3f5af71bf9b9f4a4')

build() {
  cd $startdir/src/PythonMagick-$pkgver
  ./autogen.pl
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
