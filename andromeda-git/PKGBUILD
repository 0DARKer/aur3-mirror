# Maintainer: Diego Jos√© <diegoxter1006@gmail.com>
pkgname=andromeda-git
pkgver=20110828
pkgrel=1
pkgdesc="Cross-platform file manager, written on Q"
arch=('i686' 'x86_64')
url="https://gitorious.org/andromeda"
license=('Custom')
depends=('qt')
makedepends=('git')
install=

_gitroot=https://git.gitorious.org/andromeda/andromeda.git
_gitname=andromeda

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make

}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
