pkgname=libreaddata-svn
pkgver=28
pkgrel=1
pkgdesc="A command line argument parser"
arch=('i686' 'x86_64')
url="http://code.google.com/p/libreaddata/"
license=('LGPL')
depends=()
makedepends=('gcc' 'subversion' 'cmake')
options=()
conflicts=('libreaddata')
provides=('libreaddata')
source=()
md5sums=()

_svntrunk=https://libreaddata.googlecode.com/svn/trunk/
_svnmod=libreaddata

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd libreaddata && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir libreaddata-build
	cd libreaddata-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/libreaddata
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/libreaddata-build

}
