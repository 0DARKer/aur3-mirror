# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=emacs-ruby-mode
pkgver=1.9.2_rc2
pkgrel=1
pkgdesc="Emacs ruby mode plugin"
arch=('any')
url="http://ruby-lang.org"
license=('GPL3')
depends=('emacs')
source=("http://svn.ruby-lang.org/repos/ruby/tags/v1_9_2_rc2/misc/ruby-mode.el" "http://svn.ruby-lang.org/repos/ruby/tags/v1_9_2_rc2/misc/inf-ruby.el"  "http://svn.ruby-lang.org/repos/ruby/tags/v1_9_2_rc2/misc/ruby-electric.el")

package() {
  cd "$srcdir/"
  install -d $pkgdir/usr/share/emacs/site-lisp/ruby-mode
  install -Dm644 ruby-mode.el $pkgdir/usr/share/emacs/site-lisp/ruby-mode/ruby-mode.el
  install -Dm644 inf-ruby.el $pkgdir/usr/share/emacs/site-lisp/ruby-mode/inf-ruby.el
  install -Dm644 ruby-electric.el $pkgdir/usr/share/emacs/site-lisp/ruby-mode/ruby-electric.el
}

md5sums=('139300e1d47795896572e293641aa9f7'
         '82a21475ef1eb19f7d271e70a17d9462'
         'c232e31b44da8d2c6ebf0ef3d3cc4e24')
