# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=emacs-ruby-mode
pkgver=1.9.2_rc2
pkgrel=1
pkgdesc="Emacs ruby mode plugin"
arch=('any')
url="http://ruby-lang.org"
license=('GPL3')
depends=('emacs')
source=("http://svn.ruby-lang.org/repos/ruby/tags/v1_9_2_rc2/misc/ruby-mode.el")
md5sums=('139300e1d47795896572e293641aa9f7')

package() {
  cd "$srcdir/"
  install -d $pkgdir/usr/share/emacs/site-lisp/ruby-mode
  install -Dm644 ruby-mode.el \
$pkgdir/usr/share/emacs/site-lisp/ruby-mode/ruby-mode.el
}

