#Maintainer: Nathan O <ndowens.aur at gmail dot com>
pkgname=i7z
pkgver=0.26
pkgrel=2
pkgdesc="A better CLI i5/i7 reporting tool for Linux."
arch=('i686' 'x86_64')
license=('GPL2')
depends=('sh')
#GUI needs qmake which is provided by qt
makedepends=('qt')
url="http://code.google.com/p/i7z/"
source=("http://i7z.googlecode.com/files/${pkgname}-${pkgver}.tar.gz"
		"GUI_i7z.patch")
install="i7z.install"
md5sums=('4f16f8ba2096e6156caab300e9e034e3'
         'cf9eb887d16683b3511f3643bd8f7387')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	make 
  }
package() {
	cd $srcdir/$pkgname-$pkgver
  
	install -Dm755 i7z ${pkgdir}/usr/bin/i7z  
  
	install -Dm755 MAKEDEV-cpuid-msr ${pkgdir}/usr/bin/MAKEDEV-cpuid-msr

    cd $srcdir/$pkgname-$pkgver/GUI

	patch -Ni ${srcdir}/GUI_i7z.patch

	qmake

	make

	install -Dm755 GUI $pkgdir/usr/bin/i7z-gui
 }
