# CPAN Name  : SQL-Translator
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-sql-translator'
pkgver='0.11005'
pkgrel='1'
pkgdesc="Convert RDBMS SQL CREATE syntax."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-carp-clan' 'perl-class-accessor' 'perl-class-base' 'perl-class-data-inheritable>=0.02' 'perl-class-makemethods' 'perl-dbi' 'perl-digest-sha1>=2' 'perl-file-sharedir>=1' 'perl-io-stringy>=2.11' 'perl-parse-recdescent>=1.962002' 'perl-test-differences' 'perl-test-exception' 'perl-xml-writer>=0.5' 'perl-yaml>=0.66')
url='http://search.cpan.org/dist/SQL-Translator'
source=('http://search.cpan.org/CPAN/authors/id/R/RI/RIBASUSHI/SQL-Translator-0.11005.tar.gz')
md5sums=('d725755f9bbe466f468d341689df38e2')

build() {
  DIST_DIR="${srcdir}/SQL-Translator-0.11005"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
