pkgname=stjerm
pkgver=0.14
pkgrel=3
pkgdesc="Drop-down terminal emulator."
arch=('i686' 'x86_64')
url="http://code.google.com/p/stjerm-terminal"
license=('GPL')
depends=('vte')
makedepends=('autoconf' 'subversion')
source=(http://stjerm-terminal.googlecode.com/files/$pkgname-$pkgver.tar.gz
        vte-026.patch)
md5sums=('5b2157c9057f00964ffe6d27fc5085b8'
         '8a851638e3d5b0a3e9f3b10fd6326e71')

build() {
  cd $srcdir/$pkgname-$pkgver

  patch -Np1 -i $srcdir/vte-026.patch

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR="$pkgdir/" install
}
