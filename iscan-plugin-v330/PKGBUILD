# Maintainer: Thilo Berndt <mail AT schlehmil DOT org>

pkgname=iscan-plugin-v330
pkgver=0.0.1_1
pkgrel=1
pkgdesc="iscan plugin for Epson Perfection Photo V330 scanners."
arch=('i686' 'x86_64')
url="http://www.avasys.jp/english/linux_e/"
license=('custom')
depends=('iscan')
makedepends=('rpmextract')
install=v330_$CARCH.install

if [ "$CARCH" = "i686" ] ; then
	source=(http://linux.avasys.jp/drivers/scanner-plugins/Perfection_V330/esci-interpreter-perfection-v330-${pkgver//_/-}.i386.rpm)
	ARCH=i386
	md5sums=('bbd078f7263bfe5341b57448eca8465f')
elif [ "$CARCH" = "x86_64" ] ; then
	source=(http://linux.avasys.jp/drivers/scanner-plugins/Perfection_V330/esci-interpreter-perfection-v330-${pkgver//_/-}.x86_64.rpm)
	ARCH=x86_64
	md5sums=('f3d97933ebb0baf2fc19157638ef9e95')
fi

build() {
	cd "$srcdir"
	rpmextract.sh "esci-interpreter-perfection-v330-${pkgver//_/-}.$ARCH.rpm"
	mv usr "$pkgdir"
	mkdir -p $pkgdir/usr/share/licenses/$pkgname
	mv $pkgdir/usr/share/doc/esci-interpreter-perfection-v330-${pkgver//_1/}/AVASYSPL.en.txt $pkgdir/usr/share/licenses/$pkgname
	rm -rf $pkgdir/usr/share/doc
}
