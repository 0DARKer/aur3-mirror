pkgname=colemak-vim
pkgver=20080421
pkgrel=3
pkgdesc="Colemak keyboard layout for vim by Shai Coleman"
arch=('i686' 'x86_64')
url="http://colemak.com"
license=('Public Domain')
depends=('vim')
install=colemak-vim.install
source=(colemak.vim)
md5sums=('47199294165ecfa2a31ee0a8b0ecf074')

build() {
  mkdir -p ${startdir}/pkg/usr/share/vim/vimfiles/keymap/
  cp ${startdir}/src/colemak.vim ${startdir}/pkg/usr/share/vim/vimfiles/keymap/ 
}

