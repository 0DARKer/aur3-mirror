pkgname=colemak-vim
pkgver=20080421
pkgrel=1
pkgdesc="Colemak keyboard layout for vim"
arch=('i686' 'x86_64')
url="http://colemak.com"
license=('GPL')
depends=('vim')
source=(colemak.vim)
md5sums=('c1b0a5296b14c95bfb66b2529822d04c')

build() {
  mkdir -p ${startdir}/pkg/usr/share/vim/keymap/
  cp ${startdir}/src/colemak.vim ${startdir}/pkg/usr/share/vim/keymap/ 
}

