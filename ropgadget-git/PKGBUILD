pkgname=ropgadget-git
pkgver=5.1
pkgrel=1

pkgdesc='Search ELF binaries for gadgets to facilitate ROP exploitation'
url='http://www.shell-storm.org/project/ROPgadget/'
arch=('i686' 'x86_64')
license=('GPL2')

depends=('python2-capstone' 'capstone')
makedepends=('git')

source=('git://github.com/JonathanSalwan/ROPgadget/')

md5sums=('SKIP')

pkgver() {
    cd ROPgadget
    git describe --tags | sed 's/^v//; s/-/.r/; s/-/./'
}

package() {
    cd ROPgadget
    install -Dm755 ROPgadget.py "$pkgdir"/usr/bin/ropgadget
}
