# Maintainer: Jan-Niklas Meier <dschanoeh@googlemail.com>
pkgname=socketcand-git
pkgver=0.1
pkgrel=1
pkgdesc="Socket CAN daemon"
arch=('i686' 'x86_64')
url="https://github.com/dschanoeh/socketcand"
license=('GPLv2')
groups=()
depends=()
makedepends=(git libconfig)
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=()

build() {
  rm -rf socketcand
  git clone http://github.com/dschanoeh/socketcand.git --depth=1
  cd socketcand
  make
}

package() {
  cd socketcand
  mkdir -p $pkgdir/usr/share/man/man1
  mkdir -p $pkgdir/etc/rc.d
  mkdir -p $pkgdir/bin
  make DESTDIR="$pkgdir" install SCRIPT="rc" PREFIX="/usr"
  chmod +x $pkgdir/etc/rc.d/socketcand
}


