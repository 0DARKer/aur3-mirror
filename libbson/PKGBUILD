#Maintainer: Manuel Schoenlaub <manuel.schoenlaub@gmail.com>

pkgname='libbson'
pkgver='0.6.8'
pkgrel='1'
pkgdesc='A BSON utility library.'
arch=('i686' 'x86_64')
url='http://www.mongodb.org/display/DOCS/C+Language+Center'
license=('Apache')
depends=(glibc)
makedepends=(perl)
optdepends=(xmlto asciidoc python)
source=("https://github.com/mongodb/libbson/releases/download/$pkgver/libbson-$pkgver.tar.gz")
md5sums=('9f5f7f0d2fb21093422a00dbcd772488')
build() {
	  cd "$srcdir/$pkgname-$pkgver"
	  ./configure --prefix=/usr
	  make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
