#Maintainer: Manuel Schoenlaub <manuel.schoenlaub@gmail.com>

pkgname='libbson'
pkgver='1.0.0'
pkgrel='1'
pkgdesc='A BSON utility library.'
arch=('i686' 'x86_64')
url='http://www.mongodb.org/display/DOCS/C+Language+Center'
license=('Apache')
depends=(glibc)
makedepends=(perl python)
source=("https://github.com/mongodb/libbson/releases/download/$pkgver/libbson-$pkgver.tar.gz")
md5sums=('0d8ef50e13eef1b2a4ec08dcbe81b11e')
build() {
	  cd "$srcdir/$pkgname-$pkgver"
	  ./configure --prefix=/usr --enable-man-pages=yes
	  make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
