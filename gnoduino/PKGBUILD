# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=gnoduino
pkgver=0.3.1
pkgrel=1
pkgdesc="An implementation of well-known Arduino IDE for GNOME."
arch=(any)
url="http://gnome.eu.org/evo/index.php/Gnoduino"
license=('GPL')
depends=('avr-libc' 'avrdude' 'binutils-avr' 'gcc-avr' 'pygtksourceview2'
         'python-pyserial' 'python2-gnomevfs' 'python2-gconf' 'desktop-file-utils')
makedepends=('python2-distribute')
install="$pkgname.install"
source=("http://gnome.eu.org/$pkgname-$pkgver.tar.gz")
md5sums=('993f8002b5229d97a4b04d1c25e63222')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # python2 fix
  sed -i "s|\(bin/python\).*|\12|" scripts/*

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --root="$pkgdir/"
}

# vim:set ts=2 sw=2 et:
