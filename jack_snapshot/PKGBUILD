# Maintainer: David Adler <david dot jo dot adler at gmail dot com>
pkgname=jack_snapshot
pkgver=0.0.3
pkgrel=4
pkgdesc="stores and restores a set of JACK connections"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/heaven/files/jack_snapshot/"
license=('GPL')
depends=('jack')
source=(http://sourceforge.net/projects/heaven/files/jack_snapshot/$pkgname-$pkgver.tgz jack_snapshot.patch)
md5sums=('520b723948cbe29d9ff3b9b457d082fb' 'e2df7c516d16ce5a312909f7b3eb49e5') 

build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p "${pkgdir}/usr/bin"
  patch -p1 -i ../jack_snapshot.patch
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX="$pkgdir/usr" install
}
