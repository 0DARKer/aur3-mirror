pkgname=cutegram
_pkgname=Cutegram
pkgver=git
pkgrel=1
pkgdesc="A different telegram client from Aseman team"
arch=('i686' 'x86_64')
url="http://aseman.co/en/products/cutegram/"
license=('GPL')
depends=('qt5-base' 'qt5-declarative' 'qt5-multimedia' 'qt5-quick1' 'qt5-graphicaleffects' 'qt5-quickcontrols' 'libqtelegram-bzr' 'git')
makedepends=('gcc' 'cmake')
source=("https://github.com/Aseman-Land/Cutegram.git")
md5sums=('SKIP')
 
build() {
  git clone https://github.com/Aseman-Land/Cutegram.git
  cd "${_pkgname}"
  mkdir build && cd build
  qmake-qt5 -r .. PREFIX=/usr
  make
}
 
package() {
  cd "${_pkgname}"/build
  make INSTALL_ROOT="$pkgdir" install
}
 
