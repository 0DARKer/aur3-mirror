pkgname=cutegram
_pkgname=Cutegram
pkgver=master
pkgrel=1
pkgdesc="A different telegram client from Aseman team"
arch=('x86_64' 'x64')
url="http://aseman.co/en/products/cutegram/"
license=('GPL')
depends=('qt5-base' 'qt5-declarative' 'qt5-multimedia' 'qt5-quick1' 'qt5-graphicaleffects' 'qt5-quickcontrols' 'libqtelegram-bzr' 'git' 'unzip')
makedepends=('gcc' 'cmake')
source=("https://github.com/Aseman-Land/Cutegram.git")
md5sums=('SKIP')

build() {
 
  git clone https://github.com/Aseman-Land/Cutegram.git
  unzip /tmp/$_pkgname-$pkgver.zip
  cd $_pkgname-$pkgver
  mkdir build && cd build
  qmake-qt5 -r .. PREFIX=/usr
  make
 
}
 
package() {
  cd $_pkgname-$pkgver/build
  make INSTALL_ROOT="$pkgdir" install
}


