pkgname=craftbukkit-plugin-multiverse-core
epoch=1
pkgver=2.4
pkgrel=1
pkgdesc="Multiple world plugin for Bukkit"
arch=('any')
url="https://dev.bukkit.org/server-mods/multiverse-core"
license=("BSD")
depends=("craftbukkit>=1.3.2r1.0-3")
jarfile="Multiverse-Core-$pkgver.jar"
source=("http://dev.bukkit.org/media/files/588/781/$jarfile")
noextract=("$jarfile")
sha256sums=('42b0ab1d9d52bb344bd4e0960df99c2576bb1d48d8df43bd39d3b92764c311f8')

package() {
	cd "$srcdir"
	install -Dm644 "$jarfile" "$pkgdir/srv/craftbukkit/plugins/$jarfile"
}
