# Maintainer: Dan Serban
# Contributor: Phignuton

pkgname=lxdvdrip
pkgver=1.76
pkgrel=1
pkgdesc="Rip/reauthor/burn DVDs"
url=http://developer.berlios.de/projects/lxdvdrip/
arch=(i686 x86_64)
license=GPL
depends=(dvd+rw-tools dvdauthor libdvdnav libdvdread transcode)
optdepends=(dvdwizard)
makedepends=(libdvdread)
conflicts=(mpgtx)
provides=(mpgtx)
source=("http://download.berlios.de/lxdvdrip/lxdvdrip-${pkgver}.tgz")
md5sums=('014e1383966b9e608e1dc3572072cbd2')

build()
{
  mkdir -p "${pkgdir}"/{etc,usr/bin,usr/share/man/man1}
  cd lxdvdrip
  make
  mv lxdvdrip "${pkgdir}"/usr/bin/
  mv lxac3scan "${pkgdir}"/usr/bin/
  mv lxdvdrip.1 "${pkgdir}"/usr/share/man/man1/
  mv lxdvdrip.wav "${pkgdir}"/usr/share/
  mv doc-pak/lxdvdrip.conf.EN "${pkgdir}"/etc/
  cd "${srcdir}"/lxdvdrip/vamps     && make PREFIX="${pkgdir}"/usr install
  cd "${srcdir}"/lxdvdrip/dvdbackup && make PREFIX="${pkgdir}"/usr install
  cd "${srcdir}"/lxdvdrip/requant   && make PREFIX="${pkgdir}"/usr install
  cd "${srcdir}"/lxdvdrip/buffer    && make INSTBIN="${pkgdir}"/usr/bin install
  cd ..
  mv mpgtx/mpgtx "${pkgdir}"/usr/bin/
}

