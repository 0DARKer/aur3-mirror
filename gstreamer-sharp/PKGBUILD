# Maintainer:  Jesse Jaara <gmail.com: jesse.jaara>

pkgname=gstreamer-sharp
pkgver=0.99.0
pkgrel=1
pkgdesc=".NET wrappers for gstreamer"
url="http://gstreamer.freedesktop.org/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gstreamer' 'gtk-sharp-3')
# The tarbal is badly broken, files are not ina subdirectory
#source=(http://gstreamer.freedesktop.org/src/gstreamer-sharp/gstreamer-sharp-$pkgver.tar.gz)
source=(http://cgit.freedesktop.org/gstreamer/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.gz)

build()
{
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./autogen.sh --prefix=/usr
  make
}

package()
{
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}

md5sums=('8007f549ac4c7368490b0d1bff6456e7')
