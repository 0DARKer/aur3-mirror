# Maintainer: Charles Bos <charlesbos1 AT gmail>
# Contributor: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=gstreamer-sharp
pkgver=0.99.0
pkgrel=3
pkgdesc=".NET wrappers for gstreamer"
url="http://gstreamer.freedesktop.org/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gstreamer' 'gtk-sharp-3')
# The first source link points to the official release tarball. It is not used because the tarball is broken. The second source link points to the git tarball which works and is what will be used. The third source link points to an unofficial tarball provided by the previous maintainer
#source=(http://gstreamer.freedesktop.org/src/gstreamer-sharp/gstreamer-sharp-$pkgver.tar.gz)
source=(http://cgit.freedesktop.org/gstreamer/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.gz)
#source=(http://people.uta.fi/~jesse.jaara/src/${pkgname}-${pkgver}.tar.gz)
# Checksums are skipped because the git tarball has a timestamp which means the checksums will always change.
sha256sums=('SKIP')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
