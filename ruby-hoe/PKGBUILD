# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-hoe
_gemname=${pkgname#ruby-}
pkgver=3.5.0
pkgrel=1
pkgdesc="Is a rake/rubygems helper for project Rakefiles."
arch=(any)
url="https://github.com/seattlerb/hoe"
license=('GPL')
depends=('ruby' 'rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
sha256sums=('10d6971e7686b92fee8450b95e77e26082489a49dbf1c00e6f1f66d382e05dc1')

package() {
  cd "${srcdir}"
  
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  HOME=/tmp gem install --no-user-install --ignore-dependencies \
  -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" \
  ${_gemname}-${pkgver}.gem
}
