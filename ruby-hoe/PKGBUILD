# Contributor: gem2arch 0.1
pkgname=ruby-hoe
pkgver=2.7.0
_realname="hoe"
pkgrel=1
pkgdesc="Hoe is a rake/rubygems helper for project Rakefiles"
arch=(any)
url="http://rubyforge.org/projects/seattlerb/"
license=("GPL")
depends=('ruby' 'ruby-rubyforge>=2.0.3')

source=(http://gems.rubyforge.org/gems/hoe-$pkgver.gem)
noextract=(hoe-$pkgver.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_realname}-$pkgver.gem
}
md5sums=('0be3669b11242f25de010350d6b65875')
sha1sums=('879414a3ae3796a073f42609ffbd0b5c9e2d6327')
