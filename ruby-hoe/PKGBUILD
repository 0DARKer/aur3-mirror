# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-hoe
pkgver=2.8.0
pkgrel=1
pkgdesc="Hoe is a rake/rubygems helper for project Rakefiles"
arch=(any)
url="http://rubyforge.org/projects/seattlerb/"
license=("GPL")
depends=('ruby')
source=(http://gems.rubyforge.org/gems/hoe-$pkgver.gem)
noextract=(hoe-$pkgver.gem)
md5sums=('22d0b922c68c14feb46a689bcf5f58cd')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" hoe-$pkgver.gem
}
