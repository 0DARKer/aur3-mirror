# Maintainer:  <clu>

pkgname=python-vo
_pkgname=vo
pkgver=0.6
pkgrel=2
pkgdesc="A library to parse, validate and generate VOTABLE XML files."
url="https://trac6.assembla.com/astrolib"
arch=('i686' 'x86_64')
license=('BSD')
depends=('python2' 'python-numpy' 'python-pyfits')
makedepends=('python2')
conflicts=()
replaces=()
backup=()
#install=
source=(http://stsdas.stsci.edu/astrolib/vo-${pkgver}.tar.gz)
md5sums=('607dee5451f414963719e654db595961')

build() {
  cd $startdir/src/$_pkgname-$pkgver
  python2 setup.py install --prefix=$pkgdir/usr --optimize=1 || return 1
}