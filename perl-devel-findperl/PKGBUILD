# Contributor: Konrad Borowski <glitchmr@myopera.com>
# Maintainer: Kars Wang <jaklsy AT gmail.com>

pkgname='perl-devel-findperl'
_dist='Devel-FindPerl'
pkgver=0.012
pkgrel=1
pkgdesc="Find the path to your perl"
arch=('any')
url="http://search.cpan.org/dist/${_realname}/"
license=('GPL' 'Artistic')
depends=('perl>=5.006' 'perl-extutils-config>=0.007')
makedepends=( 'perl-extutils-makemaker>=6.30' )
options=('!emptydirs' 'purge')
source=("http://www.cpan.org/authors/id/L/LE/LEONT/${_dist}-${pkgver}.tar.gz")
sha256sums=('024aca747a1b20ef191a126b4470cec4f3a65df5800e267530275e520119b71c')

build() (
  cd "$srcdir/$_dist-$pkgver"
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  /usr/bin/perl Makefile.PL
  make
)

check() (
  cd "$srcdir/$_dist-$pkgver"
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
)

package() (
  cd "$srcdir/$_dist-$pkgver"
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  make install INSTALLDIRS=vendor DESTDIR="$pkgdir"
)
