# Maintainer: GI_Jack <iamjacksemail@hackermail.com>
# Based on PKGBUILD firefox-extension-httpseverywhere

_plugin_name=shumway
_plugin_version=20130503
pkgdesc="HTML5 implemenation of flash for Firefox"
license=('MIT')

pkgname=firefox-extension-$_plugin_name
pkgver=$_plugin_version
pkgrel=2
arch=('any')
url="http://mozilla.github.com/shumway/"
depends=("firefox>=18" "firefox<25.0")
source=("http://mozilla.github.com/shumway/extension/firefox/shumway.xpi")
md5sums=('7defc5d5ca2bfcdee741f007a853c2a8')
sha1sums=('81d59481c4e70c7c7557fcc39908aba974fb8b96')
package(){
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/extensions/${emid}
  install -d $dstdir
  cp -r * $dstdir
  rm $dstdir/shumway.xpi
  chmod -R 755 $dstdir
}
pkgver(){
  pkgver=$(date +%Y%m%d)
}
pkgver=20130503
