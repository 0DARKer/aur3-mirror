pkgname='openastro'
pkgver='1.1.39'
pkgrel='1'
pkgdesc='OpenAstro is an open source fully featured astrology software.'
arch=('i686' 'x86_64')
license=('GPL')
url=('http://www.openastro.org/')
depends=('imagemagick' 'python2-dateutil' 'python2-rsvg' 'pyswisseph')
makedepends=('setuptools')
optdepends=()
conflicts=('openastro-dev' 'swisseph_18' 'swisseph-fixstars')
provides=('swisseph_18' 'swisseph-fixstars')
source=('http://www.openastro.org/download.php?file=source&type=openastro')
md5sums=('232268ff507f1fcfecdb3d11e375f84c')

build() {
    cd $srcdir
    rm -f *tar.gz
    ln -s download.php* "openastro.org_"$pkgver".orig.tar.gz"
    cd "$srcdir/openastro.org-"$pkgver
    python2 setup.py install --root=$pkgdir || return 1
}
