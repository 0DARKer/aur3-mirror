pkgname=openastro
pkgver=1.1.25
pkgrel=1
pkgdesc='OpenAstro is an open source fully featured astrology software.'
arch=(i686 x86_64)
license=('GPL')
url="http://www.openastro.org/"
depends=('gnome-python-desktop' 'imagemagick' 'librsvg' 'python-dateutil' 'pycairo' 'pygtk' 'setuptools')
makedepends=('setuptools' 'wget')
optdepends=()
source=("https://launchpad.net/~pellesimon/+archive/+files/openastro.org_$pkgver.orig.tar.gz")
md5sums=('0a00ad7876fa1d08201d2436be2ebe46')

build() {
    cd $startdir/src/
    python2 setup.py install --root=$startdir/pkg || return 1
}
