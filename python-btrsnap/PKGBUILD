# See http://wiki.archlinux.org/index.php/Python_Package_Guidelines for more
# information on Python packaging.

# Maintainer: Mike Lenzen <lenzenmi@gmail.com>
pkgname=python-btrsnap
pkgver=1.1.0
pkgrel=1
pkgdesc="A command-line tool to simplify working with timestamped btrfs snapshots" 
arch=('i686' 'x86_64')
url="https://github.com/lenzenmi/btrsnap"
license=('GPL3')
depends=('python' 'btrfs-progs')
source=("https://github.com/lenzenmi/${pkgname##python-}/archive/v$pkgver.tar.gz")
md5sums=('af9dcc81109d7198c2dec44736d7daec')

package() {
  cd "$srcdir/${pkgname##python-}-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}



