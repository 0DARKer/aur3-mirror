# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman
# Contributor: Firmicus <francois.archlinux.org>

pkgname=perl-config-autoconf
_cpanname=Config-AutoConf
pkgver=0.22
pkgrel=1
pkgdesc="A module to implement some of AutoConf macros in pure perl. "
arch=('any')
url="http://search.cpan.org/~ambs/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/A/AM/AMBS/Config/${_cpanname}-${pkgver}.tar.gz) 
md5sums=('f56914c9dbb7a975bf623730a2891d4e')

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$pkgdir || return 1
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
