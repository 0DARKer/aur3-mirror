# Contributor: Andreas dot Wagner at em dot uni-frankfurt dot de

pkgname=perl-config-autoconf
_cpanname=Config-AutoConf
pkgver=0.309
pkgrel=1
pkgdesc="A module to implement some of AutoConf macros in pure perl. "
arch=('any')
url="http://search.cpan.org/~Config/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl')
makedepends=('perl-extutils-makemaker')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/R/RE/REHSACK/${_cpanname}-${pkgver}.tar.gz) 

build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd $srcdir/${_cpanname}-${pkgver}
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}

md5sums=('a3c6370a7501725e109ea8179c510424')
