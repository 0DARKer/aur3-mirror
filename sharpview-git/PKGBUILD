# Maintainer: Shingetsu Kurai <andrey.kudryavtsev@gmail.com>
pkgname=sharpview-git
pkgver=20130315
pkgrel=1
pkgdesc="Minimalistic, easily extendible python-based browser. Intended for educational and experimental purpose."
arch=(any)
url="https://sourceforge.net/p/sharpview/"
license=('GPL3')
depends=(pywebkitgtk python2 pygtk)
makedepends=('git')
provides=(sharpview)
conflicts=(sharpview)

_gitroot=git://git.code.sf.net/p/sharpview/code
_gitname=sharpview-code

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  mkdir -p {"$pkgdir/usr/bin","$pkgdir/usr/share/sharpview"}
  cp $srcdir/$_gitname-build/sharpview $pkgdir/usr/bin
  cp -r $srcdir/$_gitname-build/{cman,toolbar,browser,bar,main.py,README} $pkgdir/usr/share/sharpview
}

# vim:set ts=2 sw=2 et:
