# Maintainer: Limao Luo <luolimao+AUR@gmail.com>
# Contributor: flan_suse

# This icon theme was created by the Shimmer Project
# to better integrate into Xfce and match their
# Xfce themes. It is based on the Elementary icons,
# and uses upstream GNOME icons, as well.

pkgname=elementary-xfce-icons
pkgver=0.4
pkgrel=1
pkgdesc='Elementary icons with better Xfce support'
arch=(any)
url=https://github.com/shimmerproject/elementary-xfce
license=(GPL2)
depends=(gnome-icon-theme)
options=(!strip)
conflicts=($pkgname-git)
optdepends=('xfce-theme-albatross: matching Shimmer Project Xfce theme'
    'xfce-theme-bluebird: matching Shimmer Project Xfce theme'
    'xfce-theme-greybird: matching Shimmer Project Xfce theme')
source=($pkgname-$pkgver.tar.gz::https://github.com/shimmerproject/${pkgname%-*}/archive/v$pkgver.tar.gz)
sha256sums=('2df47aaba6441d107eb2bc203da9b61ff4ee5cf760f35c17a105ed507bd48b84')
sha512sums=('e0c5b05ceba8f42e9effcf48f1a10d354084dfb5c377162491cbb312188c79570c76c944df86992626fd4a80a761b9ed833cfc69882c3923ad471e91200691e8')

package() {
    install -d "$pkgdir"/usr/share/icons/
    cp -rf ${pkgname%-*}-$pkgver/${pkgname%-*}{,-dark} "$pkgdir"/usr/share/icons/
    install -Dm644 ${pkgname%-*}-$pkgver/README "$pkgdir"/usr/share/doc/$pkgname/README
}
