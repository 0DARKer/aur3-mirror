# Maintainer: Black_Codec <orso.f.regna@gmail.com>

pkgname=tint2-git
_pkgname=tint2
pkgver=1.r757
_pkgver=r757
pkgrel=2
pkgdesc="Tint2-svn forked with all patch applied."
arch=('i686' 'x86_64')
url="https://github.com/BlackCodec/tint2/"
license=('GPL')
depends=('libxcomposite' 'libxinerama' 'libxrandr' 'pango' 'imlib2')
makedepends=('cmake' 'pkg-config')
options=('!libtool')
provides=('tint2')
conflicts=('tint2' 'tint' 'tint2-svn')
source="https://github.com/BlackCodec/tint2/archive/$_pkgver.zip"
md5sums=('61d94931a3df960094d12a9aacda11a9')

build() {
 sed -i 's/\#\!\/usr\/bin\/env python/\#\!\/usr\/bin\/env python2/g' "$srcdir/$_pkgname-$_pkgver/src/tint2conf/tintwizard.py"
 cd "$srcdir/$_pkgname-$_pkgver"
 cmake . -DCMAKE_INSTALL_PREFIX=/usr -DENABLE_TINT2CONF=1
 make
}

package() {
  cd "$srcdir/$_pkgname-$_pkgver"
  make DESTDIR="$pkgdir" install
}
