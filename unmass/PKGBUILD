# Contributor: G_Syme <demichan(at)mail(dot)upb(dot)de>
pkgname=unmass
pkgver=0.9
pkgrel=1
pkgdesc="A tool to extract game archives"
arch=('i686' 'x86_64')
url="http://mirex.mypage.sk/index.php?selected=1#Unmass"
license=('GPL')
source=(http://mirex.mypage.sk/FILES/$pkgname-$pkgver.tar.gz)
md5sums=('feba286425d2957b447887bd325af283')
sha512sums=('ac347666e5feb0dea478fdaabaccd1426b1349ab5351c407f27eede42010138f00d7dc6797fb9294d278f12770ae166bca54a96f77023117178557bf0b05f246')

build() {
  cd $startdir/src/$pkgname-$pkgver/kdev
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  ln -s ${pkgname}_kdev $startdir/pkg/usr/bin/$pkgname
}
