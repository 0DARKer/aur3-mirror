# Maintainer Moritz Kiefer <moritz.kiefer@gmail.com>
pkgname=sintel-game
pkgver=alpha_01
pkgrel=1
pkgdesc="A game to the OpenMovie Sintel created by the Blender Foundation"
arch=('i686' 'x86_64')
url="http://www.sintelgame.org"
depends=('blender')
source=('http://download.sintelgame.org/sintel_the_game_alpha.zip' 'sintel-game')
md5sums=('ebe4f97d8760db862e29ad9b8269df98' '7077288340bf1673dfa558269c373db5')
license=('CC-BY')
PKGEXT=".pkg.tar"
package () {
	cd ${srcdir}/sintel_the_game_alpha/sintelthegame
	install -d ${pkgdir}/opt/${pkgname}
	cp -R ${srcdir}/sintel_the_game_alpha/sintelthegame/* ${pkgdir}/opt/${pkgname}
	mv ${pkgdir}/opt/${pkgname}/sintel_win ${pkgdir}/opt/${pkgname}/bin
	rm ${pkgdir}/opt/${pkgname}/bin/*.dll
	rm ${pkgdir}/opt/${pkgname}/bin/*.exe
	mv ${pkgdir}/opt/${pkgname}/bin/sintel_win.blend ${pkgdir}/opt/${pkgname}/bin/sintel.blend
	mv ${pkgdir}/opt/${pkgname}/lib/menu/menu_scripts/menu.xml ${pkgdir}/opt/${pkgname}/lib/menu/menu_script/menu.XML

	install -D -m755 ${srcdir}/${pkgname} ${pkgdir}/usr/bin/${pkgname}

}

