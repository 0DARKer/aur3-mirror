# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on the libgdata package trunk

_pkgbase=libgdata
pkgname=libgdata-dev
pkgver=0.8.0
pkgrel=1
pkgdesc="GLib-based library for accessing online service APIs using the GData protocol"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libsoup-gnome')
makedepends=('intltool' 'gobject-introspection')
url="http://www.gnome.org"
options=('!libtool')
conflicts=("${_pkgbase}")
provides=("${_pkgbase}=${pkgver}")
source=(http://ftp.gnome.org/pub/GNOME/sources/${_pkgbase}/0.8/${_pkgbase}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}