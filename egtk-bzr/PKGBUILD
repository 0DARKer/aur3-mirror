# Contributor: fresh24 <pascher dot christian at gmail dot com>

pkgname=egtk-bzr
_pkgname=egtk
pkgver=239
pkgrel=1
pkgdesc="Development branch of the elementary GTK theme."
arch=('i686' 'x86_64')
url="https://launchpad.net/egtk"
license=('GPL2')
depends=('gtk-engine-murrine-git')
optdepends=('elementary-icons' 'nautilus-elementary')
makedepends=('bzr')
conflicts=('elementary-gtk-theme')

_bzrmod=egtk
_bzrtrunk=lp:${_bzrmod}

build() {
	cd ${srcdir}

	msg "Connecting to the server...."

	if [ ! -d ./${_bzrmod} ]; then
		bzr co ${_bzrtrunk} ${_bzrmod}
	else
		bzr up ${_bzrmod}
	fi

	msg "BZR checkout done or server timeout"
	msg "Starting make..."

	mkdir -p ${pkgdir}/usr/share/themes
	cp -r ${srcdir}/${_bzrmod} ${pkgdir}/usr/share/themes/elementary || return 1
	# remove debian files
	rm -rf ${pkgdir}/usr/share/themes/elementary/debian
	# remove bzr files
	rm -rf ${pkgdir}/usr/share/themes/elementary/.bzr
}

package() {
  return 0
}
