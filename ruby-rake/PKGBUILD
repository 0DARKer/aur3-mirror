pkgname=ruby-rake
pkgver=10.1.0
_gem="${pkgname#ruby-}-$pkgver.gem"
pkgrel=1
pkgdesc='Build tool that uses Ruby as the build language'
arch=('any')
url='http://rake.rubyforge.org'
license=('MIT')
depends=('ruby' 'rubygems')
source=("http://rubygems.org/downloads/$_gem")
noextract=("$_gem")
sha256sums=('f8b06839ab1df58879bcacc8351927a2cda0e9daa91ea5b01f3d8d08e3c53abb')

build() {
  cd "$srcdir"

  gem install --no-user-install --ignore-dependencies \
    -i "${pkgdir}$(ruby -rubygems -e'puts Gem.default_dir')" \
    -n "${pkgdir}/usr/bin" "$_gem"
}

