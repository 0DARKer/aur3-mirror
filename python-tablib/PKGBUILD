# Maintainer: David Scholl <djscholl at gmail dot com>
pkgname=python-tablib
pkgver=0.9.2
pkgrel=1
pkgdesc="A format-agnostic tabular dataset library, written in Python."
arch=('any')
url="http://tablib.org"
license=('MIT')
depends=('python2')
source=(kennethreitz-tablib-d7ddb59.tar.gz::https://github.com/kennethreitz/tablib/tarball/v$pkgver)
md5sums=('5b5b52bda90eb014e41bab13ad70c192')

build() {
  cd $srcdir/kennethreitz-tablib-d7ddb59
  sed 's/python/python2/' -i tablib/packages/xlwt/Formatting.py || return 1
  python2 setup.py install --root=$pkgdir || return 1
  install -D -m644 $srcdir/kennethreitz-tablib-d7ddb59/LICENSE \
    $pkgdir/usr/share/licenses/$pkgname/LICENSE
  install -D -m644 $srcdir/kennethreitz-tablib-d7ddb59/NOTICE \
    $pkgdir/usr/share/licenses/$pkgname/NOTICE
}

