# Maintainer: Thomas Arnhold <thomas at arnhold dot org>

pkgname=libabw
pkgver=0.1.0
pkgrel=1
pkgdesc="Import library for AbiWord documents."
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/libabw/"
license=('MPL')
depends=('librevenge' 'libxml2' 'zlib')
makedepends=('boost')
source=(http://dev-www.libreoffice.org/src/${pkgname}-${pkgver}.tar.xz)
md5sums=('f29f5ad99b36635fb566c55327b1905e')

build() {
    cd ${pkgname}-${pkgver}
    ./configure --prefix=/usr
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install
}
