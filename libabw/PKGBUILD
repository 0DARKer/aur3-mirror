# Maintainer: Thomas Arnhold <thomas at arnhold dot org>

pkgname=libabw
pkgver=0.0.2
pkgrel=1
pkgdesc="Import library for AbiWord documents."
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/libabw/"
license=('MPL')
depends=('libwpd' 'libxml2' 'zlib')
makedepends=('boost')
source=(http://dev-www.libreoffice.org/src/${pkgname}-${pkgver}.tar.xz)
md5sums=('2d8c4255ae8ecd3fcc590fdecf7dc262')

build() {
    cd ${pkgname}-${pkgver}
    ./configure --prefix=/usr
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install
}
