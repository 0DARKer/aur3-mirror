# Maintainer: Einar Lielmanis <einar@bugpipe.org>

pkgname=sylpheed-beta-iconmod
pkgver=3.1.0rc
pkgrel=1
pkgdesc="Lightweight and user-friendly e-mail client. Latest official beta version with the coonsden.com icon theme."
arch=('i686' 'x86_64')
url="http://sylpheed.sraoss.jp/en/"
license=('GPL')
depends=('gpgme' 'gtk2')
makedepends=('compface')
options=('libtool')
conflicts=('sylpheed' 'sylpheed-beta')
provides=('sylpheed')
source=(http://sylpheed.sraoss.jp/sylpheed/v3.1beta/sylpheed-$pkgver.tar.bz2
        http://bugpipe.org/gpl/Sylpheed3.0_icon-set.tar.gz)

build() {
  cp -r "$srcdir/Sylpheed3.0_icon-set/src" "$srcdir/sylpheed-$pkgver"
  cd "$srcdir/sylpheed-$pkgver"

  ./configure --prefix=/usr --enable-ldap --disable-gtkspell || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
md5sums=('f8f57cd644bfa69756e8430289b8f891'
         '9211c926e41673f24600d7912fb1699a')
