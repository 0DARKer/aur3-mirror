# Maintainer: Can Celasun <dcelasun[at]gmail[dot]com>
pkgname=foldit
pkgver=1
pkgrel=2
pkgdesc="Foldit is a revolutionary new computer game enabling you to contribute to important scientific research."
arch=('i686' 'x86_64')
url="http://fold.it/"
license=('custom')
install=foldit.install
source=('http://fold.it/portal/files/app/Foldit.tar.gz' 'foldit.desktop' 'foldit.png' 'foldit.sh')
md5sums=('d33f0c404459f09a1fe0db28c4cbdcd3'
         '3bf30a00e76d0b94f56210db1f54d1f8'
         '5cabaab302c63e20267c8d77c5b3cdc3'
         '61cd19b56b33f6cb2f70baa022b759de')

[ `uname -m` = 'i686' ] &&
  depends=('freeglut' 'libxi')
[ `uname -m` = 'x86_64' ] &&
  depends=('lib32-freeglut' 'lib32-libxi')

build() {
  cd $srcdir/Foldit
  
  mkdir -p $pkgdir/usr/share/applications/foldit
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/pixmaps
  mkdir -p $pkgdir/usr/share/applications
  
  cp * $pkgdir/usr/share/applications/foldit -R  

  cp $srcdir/foldit.sh $pkgdir/usr/bin/foldit
  cp $srcdir/foldit.desktop $pkgdir/usr/share/applications
  cp $srcdir/foldit.png $pkgdir/usr/share/pixmaps

  chmod +x $pkgdir/usr/bin/foldit  
}
