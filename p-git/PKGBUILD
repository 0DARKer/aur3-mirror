# Maintainer: Storm Dragon <stormdragon2976@gmail.com>
_pkgname=p
pkgname=p-git
pkgver=30
pkgrel=1
pkgdesc="a pump.io version of the command line utility t"
arch=('any')
url="https://github.com/xray7224/$_pkgname"
license=('GPL3+')
depends=('python2-dateutil' 'python2-egg' 'python2-html2text' 'python2-pytz' 'python2-click')
makedepends=('git')
provides=("$_pkgname")
conflicts=("$_pkgname")
source=("$_pkgname::git+git://github.com/xray7224/$_pkgname.git")
md5sums=("SKIP")

pkgver()
{
  cd "$_pkgname"
  git shortlog | head -n 1 | tr -Cd "[:digit:]"
}
 
prepare()
{
  cd $_pkgname
  sed -i 's/^#!\/usr\/bin\/python/#!\/usr\/bin\/python2/' $_pkgname
}

package()
 {
  cd "$_pkgname"
  install -Dm755 "p" "$pkgdir/usr/bin/$_pkgname"
  }

# vim:set ts=2 sw=2 et:
