pkgname=freesynd
pkgver=0.2
pkgrel=1
pkgdesc="Clone of the class DOS game Syndicate."
url="http://sourceforge.net/projects/freesynd/"
license=(gpl)
arch=('i686' 'x86_64')
provides=('freesynd')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.zip?use_mirror=switch)
md5sums=('e51dab2a2783ae9cc522b8fa363aa420')
depends=('sdl' 'sdl_mixer')

build() {
  cd $startdir/src/$pkgname/src
  make
# now we can make a directory to install to
# /opt for now, will be moved once the game moves out of heavy development
  RELDIR="/opt/$pkgname"
  INSTDIR="$pkgdir/$RELDIR/"
  EXEDIR="$pkgdir/usr/bin/"
  mkdir -p "${INSTDIR}data"
  mkdir -p "$EXEDIR"

  install -m 755 ./$pkgname "$INSTDIR"
  cd ../data
  install -m 644 * "${INSTDIR}data" 
  echo "#!/bin/bash
cd $RELDIR
./$pkgname" >"$EXEDIR/$pkgname"
  chmod 755 "$EXEDIR/$pkgname"
}

