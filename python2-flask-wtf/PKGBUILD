pkgname=python2-flask-wtf
_pkgname=flask-wtf
pkgver=0.8.4
pkgrel=1
pkgdesc='Simple integration of Flask and WTForms'
arch=('i686', 'x86_64')
url='https://pypi.python.org/pypi/Flask-WTF'
license=('custom')
depends=('python2-wtforms' 'python2-flask')
makedepends=('git')
# As of 2013-05-28; 0.8.4 was not on pypi; 86308af546 is 0.8.4 according to the log
source=('git://github.com/ajford/flask-wtf.git#commit=86308af546')
md5sums=('SKIP')

build() {
    cd "$srcdir/$_pkgname"

    python2 setup.py build
}

package() {
    cd "$srcdir/$_pkgname"

    python2 setup.py install --root=${pkgdir} --optimize=1

    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/python2-flask-wtf
}
