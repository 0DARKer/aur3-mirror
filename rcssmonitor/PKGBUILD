pkgname=rcssmonitor
pkgver=15.1.0
pkgrel=2
pkgdesc="The RoboCup 2D Soccer Simulator Monitor."
arch=('i686', 'x86_64')
url="http://sserver.sourceforge.net/"
depends=('libice' 'libxpm' 'libx11')
makedepends=('make' 'boost' 'gcc-libs')
source=(http://downloads.sourceforge.net/sourceforge/sserver/$pkgname-$pkgver.tar.gz)
md5sums=('bdadc8ab9d226f3b3088ab1f9f9b4225')
license=('GPL')

build() {
  cd $startdir/src/rcssmonitor-$pkgver/
  ./configure --prefix=/usr
  make
  make PREFIX=/usr DESTDIR=$pkgdir install
}

