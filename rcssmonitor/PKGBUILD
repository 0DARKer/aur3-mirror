pkgname=rcssmonitor
pkgver=15.1.0
pkgrel=4
pkgdesc="The RoboCup 2D Soccer Simulator Monitor."
arch=('i686', 'x86_64')
url="http://sserver.sourceforge.net/"
depends=('boost-libs' 'qt4')
makedepends=('boost')
source=(http://downloads.sourceforge.net/sourceforge/sserver/$pkgname-$pkgver.tar.gz)
md5sums=('3c2212a5eabc2a6eb8c898fbf359d33a')
license=('GPL')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
