# Maintainer: Markus Seidel <markus@mseidel.eu>
pkgname=syncevolution-bin
pkgname_=syncevolution
pkgver=1.0
pkgrel=1
pkgdesc="Provides full two-way synchronization for Evolution via SyncML and Bluetooth"
arch=('i686')
url="http://syncevolution.org/"
license=('GPL')
depends=('evolution')
provides=('syncevolution')
conflicts=('syncevolution' 'syncevolution-git')
source=(http://downloads.syncevolution.org/syncevolution/evolution/$pkgname_-$pkgver-evolution.tar.gz)
md5sums=('49bd4f1f6743efd9297d89031f54cdac')

build() {
  cd "$srcdir/$pkgname_-$pkgver"

  cp -r * "$pkgdir"
  rm "$pkgdir/INSTALL"
}

