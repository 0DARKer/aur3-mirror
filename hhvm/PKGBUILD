# Maintainer: James Miller <james@pocketrent.com>

pkgname=hhvm
pkgver=2.3.1
pkgrel=1
epoch=
pkgdesc="Virtual Machine, Runtime, and JIT for PHP"
arch=('x86_64')
url="http://hhvm.com"
license=('PHP')
groups=()
depends=('boost-libs' 'google-glog' 'libmysqlclient' 'libmemcached' 'pcre' 'gd'
         'libxml2' 'intel-tbb' 'libmcrypt' 'oniguruma' 'libldap' 'elfutils'
         'jemalloc' 'curl' 'expat')
makedepends=('git' 'cmake' 'gcc>=4.8' 'chrpath' 'boost' 'imap' 'libdwarf')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
_folly_hash="8e8b5e75d"
source=("$pkgname-$pkgver.tar.gz::https://github.com/facebook/hhvm/archive/HHVM-$pkgver.tar.gz"
        "folly-$_folly_hash.tar.gz::https://github.com/facebook/folly/archive/$_folly_hash.tar.gz"
        "$pkgname-$pkgver.patch")

noextract=("folly-$_folly_hash.tar.gz")

noextract=()
md5sums=('d1f260570b515a01186cfb8ab8aa82b7'
         '881badfdbc9b07bf66225ac58c74c446'
         '7cadba09094164d99cac0ef33f8f362f')

prepare() {
    export CMAKE_PREFIX_PATH="$srcdir"
    export HPHP_HOME="$srcdir/$pkgname-HHVM-$pkgver"

    cd "$srcdir/$pkgname-HHVM-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"

    cd "$srcdir/$pkgname-HHVM-$pkgver/hphp/submodules"
    tar -xzf "$srcdir/folly-$_folly_hash.tar.gz" --strip-components=1 -C "folly"
}

build() {
	cd "$srcdir/$pkgname-HHVM-$pkgver"
    CC=gcc CXX=g++ INCLUDE=/usr/include/libdwarf HPHP_NOTEST=1 \
    cmake . -DCMAKE_INSTALL_PREFIX="$pkgdir/usr"
	make -j4 hhvm
}

package() {
	cd "$srcdir/$pkgname-HHVM-$pkgver"
	make install
}
