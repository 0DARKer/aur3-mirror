# Contributor: Eduardo Robles Elvira <edulix AT gmail DOT com>
pkgname=osc-build-git
pkgver=20100805
pkgrel=1
pkgdesc="A Script to Build SUSE Linux RPMs"
url="http://build.opensuse.org"
license=("GPL")
depends=(bash perl perl-timedate binutils tar subversion)
builddepends=(bash)
makedepends=(subversion)
arch=(i686 x86_64)
source=()
md5sums=()
_gitroot="git://gitorious.org/opensuse/build.git"
_gitname="build"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Install..."

  cd "$srcdir/$_gitname"
  make install
}
