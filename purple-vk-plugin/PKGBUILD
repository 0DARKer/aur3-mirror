# Maintainer: Oleg Andreev <olegoandreev@yandex.ru>
pkgname=purple-vk-plugin
pkgver=0.9+r342
pkgrel=1
pkgdesc="Plugin for Pidgin, adding Vk.com support"
arch=('i686' 'x86_64')
url="http://bitbucket.org/olegoandreev/purple-vk-plugin"
license=('GPL3')
depends=('libpurple')
makedepends=('cmake')
options=('!strip')
changelog=
source=(https://bitbucket.org/olegoandreev/purple-vk-plugin/downloads/$pkgname-$pkgver.tar.gz)
sha512sums=(ceb65a7ffbc03439306167d8b8b1b42e2af4816a9e8a7761b0eb303657ccb6705d39cf25ea7bac73c650987e0fb088833d4e94c0007f0cd59bc92b71aed37196)

build() {
  cd $pkgname-$pkgver

  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd $pkgname-$pkgver/build

  make DESTDIR=$pkgdir install
}

