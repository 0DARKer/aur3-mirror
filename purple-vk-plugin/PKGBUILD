# Maintainer: Oleg Andreev <olegoandreev@yandex.ru>
pkgname=purple-vk-plugin
pkgver=0.7+r262
pkgrel=1
pkgdesc="Plugin for Pidgin, adding Vk.com support"
arch=('i686' 'x86_64')
url="http://bitbucket.org/olegoandreev/purple-vk-plugin"
license=('GPL3')
depends=('libpurple')
makedepends=('cmake')
options=('!strip')
changelog=
source=(https://bitbucket.org/olegoandreev/purple-vk-plugin/downloads/$pkgname-$pkgver.tar.gz)
sha512sums=(f791b1c8f268a25a0c40638458724009c27b6200c07c09616a5d8d0be31a7425878ff932a1b01cb3d091ac97373907ef29bdf97394ec868467046484f7e797d1)

build() {
  cd $pkgname-$pkgver

  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd $pkgname-$pkgver/build

  make DESTDIR=$pkgdir install
}

