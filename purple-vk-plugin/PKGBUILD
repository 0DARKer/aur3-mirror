# Maintainer: Oleg Andreev <olegoandreev@yandex.ru>
pkgname=purple-vk-plugin
pkgver=0.9+r298
pkgrel=1
pkgdesc="Plugin for Pidgin, adding Vk.com support"
arch=('i686' 'x86_64')
url="http://bitbucket.org/olegoandreev/purple-vk-plugin"
license=('GPL3')
depends=('libpurple')
makedepends=('cmake')
options=('!strip')
changelog=
source=(https://bitbucket.org/olegoandreev/purple-vk-plugin/downloads/$pkgname-$pkgver.tar.gz)
sha512sums=(32aeb1e5557dac348bd9962f28896e8eb76a26720a51fa559978a7e0f1e3a753504c87d00f50932ec3d5b45c234c11270b8894dbf4d64a12b3a386e3d8b11631)

build() {
  cd $pkgname-$pkgver

  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd $pkgname-$pkgver/build

  make DESTDIR=$pkgdir install
}

