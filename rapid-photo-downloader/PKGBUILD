pkgname=rapid-photo-downloader
pkgver=0.4.2
pkgrel=1
pkgdesc="Application for professional and amateur photographers to download photos from multiple cameras, memory cards, and portable storage devices simultaneously.  It provides many options for subfolder creation, image renaming, and backup."
arch=('any')
url="http://www.damonlynch.net/rapid/"
license=('GPL3')
depends=('python2>=2.6'
         'pyexiv2>=0.3.0'
         'gnome-python>=2.28'
         'python-notify>=0.1.1'
         'pygtk>=2.17'
         'python-rsvg>=2.26'
         'python-imaging>=1.1.7'
         'python2-gconf>=2.28'
         'dbus-python')
optdepends=('hachoir-metadata: Enable video downloading'
            'kaa-metadata: Enable video downloading'
            'hachoir-parser: Enable video downloading'
            'ffmpegthumbnailer: Enable video thumbnails')
source=(http://launchpad.net/rapid/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz)
md5sums=('e9a89b411192e5ae4664eb83dd62551c')

build() {
    # cd $startdir/src/$pkgname-$pkgver
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py build
    #--root=$startdir/pkg/
}

package() {
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py install --root=$pkgdir
}
