# Contributor: rabyte <rabyte__gmail>

pkgname=everborn
pkgver=20080724
pkgrel=1
pkgdesc="A Master Of Magic Multiplayer Clone with real-time combat"
arch=('i686')
url="http://everborn.sourceforge.net/"
license=('GPL2')
depends=('sdl_mixer' 'libgl' 'gcc-libs' 'libpng')
source=(http://everborn.sourceforge.net/everborn_gal${pkgver}src.tar.bz2 \
	http://everborn.sourceforge.net/everborn_gal20080723data.tar.bz2 \
	Makefile.diff \
	$pkgname.sh)
md5sums=('ce29558b0e1ca63b66b34a070be75d24'
         '4165d4fba7c2c97b32b0d8ead0a3966a'
         '26593fd7c20e85483c12db7e9d7cc0fd'
         '1537fa5c99f50d829714ad0d82ca8947')

build() {
  cd $srcdir/$pkgname

  patch -Np0 -i ../Makefile.diff || return 1
  make || return 1

  install -m755 -D $pkgname $pkgdir/usr/share/$pkgname/$pkgname
  cp -rf *.game *.png *.raz $pkgdir/usr/share/$pkgname/
  install -m755 -D ../$pkgname.sh $pkgdir/usr/bin/$pkgname
}

# vim:set ts=2 sw=2 et:
