# Submitter: Dknight
# Maintainer: Maksim Sipos <msipos@mailc.net>
pkgname=octave-miscellaneous
pkgver=1.0.11
pkgrel=1
pkgdesc="The Octave-forge Miscellaneous package provides miscellaneous tools like waitbar, xml tools etc."
arch=('i686' 'x86_64')
url="http://octave.sourceforge.net/miscellaneous/index.html"
license=('GPL')
depends=('octave' 'termcap')
makedepends=()
optdepends=()
backup=()
options=()
install=octave-miscellaneous.install
source=("http://downloads.sourceforge.net/octave/miscellaneous-$pkgver.tar.gz")
noextract=("miscellaneous-$pkgver.tar.gz")
md5sums=('278c3a0faeb146b042daf2f843084c08')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  cp miscellaneous-$pkgver.tar.gz $pkgdir/usr/share/octave/miscellaneous.tar.gz
}
