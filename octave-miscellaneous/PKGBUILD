pkgname=octave-miscellaneous
pkgver=1.0.10
pkgrel=1
pkgdesc="The Octave-forge Miscellaneous package provides miscellaneous tools like waitbar, xml tools etc."
arch=('i686' 'x86_64')
url="http://octave.sourceforge.net/miscellaneous/index.html"
license=('GPL')
depends=('octave' 'termcap')
makedepends=()
optdepends=()
backup=()
options=()
install=
source=("http://downloads.sourceforge.net/octave/miscellaneous-1.0.10.tar.gz")
noextract=("miscellaneous-$pkgver.tar.gz")
md5sums=('a46773c9e82c7b906d361f419ba2a2f3')

build() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/share/octave/packages
  mkdir -p $pkgdir/usr/lib/octave/packages
  echo "pkg prefix $pkgdir/usr/share/octave/packages $pkgdir/usr/lib/octave/packages; pkg install -local miscellaneous-$pkgver.tar.gz" | octave --quiet
}
