install=else.install

build() {
  cd $srcdir
  makeinfo else.texi || return 1
  pdftex else.texi || return 1
  pdftex else.texi || return 1
  pdftex else.texi || return 1
  install -Dm644 else "$pkgdir"/usr/share/info/else.info || return 1
  gzip "$pkgdir"/usr/share/info/else.info || return 1
  install -Dm644 else.pdf \
    "$pkgdir"/usr/share/doc/$pkgname/$pkgname.pdf || return 1
  rm else else.texi else.pdf || return 1
  sed -i 's/string-to-int/string-to-number/g' setnu.el || return 1
  for _i in *.el
  do
    emacs -batch -q -f batch-byte-compile ${_i}
  done || return 1
  install -d "$pkgdir"/usr/share/emacs/site-lisp || return 1
  for _i in *
  do 
    install -Dm644 ${_i} "$pkgdir"/usr/share/emacs/site-lisp
  done || return 1
}