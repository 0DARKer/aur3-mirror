# Maintainer: Michael Witten <mfwitten>

# The various phases of the build can be controlled
# with the following variables (use an empty value
# to mean false; if you're hacking on the source,
# I RECOMMEND skipping the _clean phase):

_source=yes
_clean=yes
_compile=yes
_install=yes
#_install=          # do not install

######################################################################

pkgname=llpp-git
pkgver=20110330
pkgrel=1
pkgdesc="Lightweight but fast and featureful PDF viewer based on MuPDF"

arch=(i686 x86_64)
url=http://repo.or.cz/w/llpp.git
license=(GPL)

provides=(llpp)
conflicts=(llpp)

depends=(freeglut)

makedepends=(
  cvs
  subversion
  git
  ocaml
)

options=('!strip')

_gitroot=git://repo.or.cz/llpp.git
_gitname=repo

build()
{
  cd "$srcdir"

  #### Source ####

    if [[ ! $_source ]]; then

      cd "$_gitname"

    else

      msg "Connecting to server...."

      if [[ -d $_gitname ]]; then

        cd "$_gitname"
        git pull origin
        msg "The local files are updated."

      else

        git clone "$_gitroot" "$_gitname"
        cd "$_gitname"

      fi

      msg "Checkout done or server timeout"

    fi

  # At this point, the current working directory
  # should be "$srcdir/$_gitname"

  #### Clean ####

    if [[ $_clean ]]; then

      msg "Cleaning ..."
      git clean -fdx

    fi

  #### Configure ####
  #### Compile ####

    if [[ $_compile ]]; then
    
      msg "Compiling ..."
      bash buildall.sh

    fi
}

package()
{
  cd "$srcdir/$_gitname"

  #### Install  ####

    if [[ $_install ]]; then
    
      msg "Installing ..."
      install -D llpp "$pkgdir"/usr/bin/llpp

    fi
}
