# Contributor: Aleshus <aleshusi@gmail.com>

pkgname=sipp
pkgver=3.3.990
pkgrel=1
pkgdesc="A free Open Source test tool / traffic generator for the SIP protocol."
arch=('i686' 'x86_64')
url="http://sipp.sourceforge.net/"
license=('GPL')
depends=('openssl' 'libpcap' 'lksctp-tools')
source=(http://sourceforge.net/projects/sipp/files/sipp/3.4/${pkgname}-${pkgver}.tar.gz)
sha256sums=('d018d632010a8368b339924a70d219c9e71655fb26664ddced51ec9b9023fad1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --with-pcap --with-sctp
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -D -m0755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
