# Contributor:		osily <ly50247@gmail.com>

pkgname=atanua
pkgver=1.0.081116
pkgrel=1
pkgdesc="A real-time logic simulator, designed to help in learning of basic boolean logic and electronics."
arch=('i686')
url="http://sol.gfxile.net/atanua/index.html"
license=('custom')
depends=('sdl_image')
source=("http://sol.gfxile.net/zip/atanua081116_pe.tar.gz")

build()
{
install -d "${pkgdir}/usr/bin"
install -d "${pkgdir}/opt/"
cp -r "${srcdir}/atanua081116_pe" "${pkgdir}/opt/"
echo "#!/bin/sh" > atanua
echo "/opt/atanua081116_pe/atanua" >> atanua
install -m755 atanua "${pkgdir}/usr/bin/atanua"
rm -r ${srcdir}/atanua081116_pe
}
md5sums=('9b86c9383c5f48cdb84d1ca766f252de')

