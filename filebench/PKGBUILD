pkgname=filebench
pkgver=1.4.4
pkgrel=1
pkgdesc="FileBench is a framework of file system workloads for measuring and comparing file system performance"
arch=(i686)
url="http://opensolaris.org/os/community/performance/filebench/"
license=('CDDL')
depends=(perl libaio libtecla)
options=(docs)
install=
source=(http://internap.dl.sourceforge.net/sourceforge/filebench/$pkgname-$pkgver.tar.gz filebench.patch)
md5sums=('7134e8979e1216f6fc3b85679dfbf5b5'
         '8587af23ebd4584d62e6ab92eb604065')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  patch -p1 < ../../filebench.patch

  aclocal
  autoconf
  autoheader
  automake --add-missing --copy
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
