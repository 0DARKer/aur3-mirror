pkgname=trytond-account-invoice
_pkgname=trytond_account_invoice
pkgver=2.4.1
_pkgdir=2.4
pkgrel=2
pkgdesc="The account_invoice module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.4' 'trytond-account>=2.4' 'trytond-company>=2.4' 'trytond-party>=2.4' 'trytond-product>=2.4' 'trytond-currency>=2.4' 'trytond-account_product>=2.4')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("c44b9cbde537b3d54e0fd45b5fbf2943")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir
}