# Maintainer: Michele Damiano Torelli <me_AT_mdtorelli_DOT_it>
pkgname=('playframework2-devel-doc')
pkgver=2.1rc1
_pkgver=2.1
_develver=RC1
pkgrel=1
arch=('any')
url="http://www.playframework.org/"
license=('Apache')
pkgdesc="Documentation and samples for Play Framework 2 - Development version"
depends=('playframework2-devel>=2.1rc1')
conflicts=('playframework-doc' 'playframework2-doc')
replaces=('playframework2-doc')
provides=('playframework2-doc')
source=(http://download.playframework.org/releases/play-${_pkgver}-${_develver}.zip)
md5sums=('f4ccddaaa641cf5c9b58410633d3ce34')

package() {
  cd "${srcdir}/play-${_pkgver}-${_develver}"
  install -dm755 ${pkgdir}/usr/share/playframework2
  cp -r ./{documentation,samples} ${pkgdir}/usr/share/playframework2
}

