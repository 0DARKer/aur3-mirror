# Maintainer: jjacky
pkgname=pkgclip
pkgver=0.1.1
pkgrel=1
pkgdesc="Cached Packages Trimmer Utility"
arch=('i686' 'x86_64')
url="https://bitbucket.org/jjacky/pkgclip"
license=('GPL3+')
depends=('dbus' 'polkit' 'gtk3' 'pacman>=4.0.1')
makedepends=('pkg-config')
source=(https://bitbucket.org/jjacky/$pkgname/get/$pkgver.tar.gz)

build() {
  cd "$srcdir"
  # archive is auto-generated by bitbucket, so name includes last commit
  _dir=$(ls | grep jjacky-$pkgname-)
  # moving it all in srcdir
  mv $_dir/* .
  # removing e.g. .hg_archival.txt or .hgtags
  rm -f $_dir/.hg*
  rmdir $_dir
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}

md5sums=('1e295f365b75fd9f8e1dea1b7c774903')

