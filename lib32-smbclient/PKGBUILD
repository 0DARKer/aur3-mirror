# AUR packages should not be built from binaries. This is a workaround.
# If you manage to built this lib32 package from source, let the maintainer know
# and you will be helping the AUR community.

_pkgbasename=smbclient
pkgname=lib32-$_pkgbasename
pkgver=3.5.6
pkgrel32=1
pkgrel=1
pkgdesc="Tools to access a server's filespace and printers via SMB (32 bits)"
arch=('x86_64')
url="http://www.gnome.org"
depends=('lib32-heimdal' 'lib32-libcap' 'lib32-libldap' 'lib32-popt' "${_pkgbasename}=${pkgver}")
license=('GPL' 'LGPL')
source=(ftp://ftp.archlinux.org/extra/os/i686/${_pkgbasename}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
md5sums=('0c90a466894da73f82b2b968c06bd302')

build() {
  return 0
}

package() {
  mkdir -p ${pkgdir}/usr/lib32
  cp -R ${srcdir}/usr/lib/* ${pkgdir}/usr/lib32
}
