# Maintainer: Guten <ywzhaifei at gmail dot com>

pkgname=apple-bl-gmux
pkgver=0.4
pkgrel=3
pkgdesc="a kernel module with gmux backlight suppor"
arch=("i686" "x86_64")
url="https://wiki.ubuntu.com/Kernel/AppleGmuxBacklight"
license=("unkonwn")
depends=("linux")
makedepends=("linux-api-headers" "linux-headers")
install="install"
source=("https://launchpad.net/~sforshee/+archive/apple-bl-gmux/+files/apple-bl-gmux-dkms_0.4.tar.gz")

build(){
	cd $srcdir/src

	make -C /lib/modules/`uname -r`/build M=$PWD
	gzip -9 apple_bl.ko
}

package(){
	cd $srcdir/src

  install -Dm644 apple_bl.ko "$pkgdir/lib/modules/$(uname -r)/updates/drivers/video/backlight/apple_bl.ko"
}

# vim:set ts=2 sw=2 et:
md5sums=('8c852e4d505339313a2751713dfb4973')
