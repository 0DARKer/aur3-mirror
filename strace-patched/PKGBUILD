# Contributor: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=strace-patched
pkgname_=strace
pkgver=4.7
pkgrel=2
pkgdesc="A useful diagnositic, instructional, and debugging tool - patched for two-digit OS numbers"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/strace/"
license=('custom')
depends=('perl')
provides=('strace')
conflicts=('strace')
source=("http://downloads.sourceforge.net/${pkgname_}/${pkgname_}-$pkgver.tar.xz"
        "strace-version.patch")
md5sums=('6054c3880a00c6703f83b57f15e04642'
         '90773e22dd58510755c1c4c1404ca843')

build() {
  cd "${srcdir}/${pkgname_}-${pkgver}"
  patch -p1 -i ../../strace-version.patch

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname_}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
  install -Dm644 COPYRIGHT "${pkgdir}/usr/share/licenses/${pkgname_}/LICENSE"
}
