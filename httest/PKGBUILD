# Maintainer: Thomas Wei√üschuh <thomas_weissschuh@lavabit.com>

pkgname=httest
pkgver=2.1.0
pkgrel=1
pkgdesc="HTTP Test Tool"
arch=('i686' 'x86_64')
url="http://htt.sourceforge.net"
license=('APACHE')
source=("http://downloads.sourceforge.net/project/htt/htt2.1/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz"
        "http://downloads.sourceforge.net/project/htt/htt2.1/${pkgname}-${pkgver}/users-guide.pdf")
sha1sums=('f1c7a4ba8deb2a92805cddc662f34614e053e222'
          '66dccf25ebe2808367f4cde18ed2b16fcbf32337')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure  --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  mkdir -p ${pkgdir}/usr/share/doc/${pkgname}/
  cd ${srcdir}
  cp users-guide.pdf ${pkgdir}/usr/share/doc/${pkgname}/
}
