build() {
  cd ${srcdir}
  install -d  $pkgdir/usr/lib/python3.2/site-packages/eric5/i18n/
  install -m644 $srcdir/eric5-$pkgver/eric/i18n/* $pkgdir/usr/lib/python3.2/site-packages/eric5/i18n/
}
