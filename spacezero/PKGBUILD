pkgname=spacezero
pkgver=0.80.03
pkgrel=2
pkgdesc='A RTS space game'
url="http://spacezero.sourceforge.net/index.html"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('gcc' 'make' 'gtk2' 'glib2' 'openal' 'freealut')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("http://sourceforge.net/projects/spacezero/files/spacezero 0.80.0/spacezero-0.80.03.tar.gz")
# md5sums were done in Thu 06/23/11
md5sums=('ea17e5954a2a9a55c397235bc43be1e6')
build() {
  cd ${srcdir}
  tar xvf ${pkgname}-${pkgver}.tar.gz
  cd ${pkgname}
  make
  mv bin/${pkgname} ${pkgdir}
}
