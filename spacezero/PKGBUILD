pkgname=spacezero
pkgver=0.82.02
pkgrel=3
pkgdesc='A RTS space game'
url="http://spacezero.sourceforge.net/index.html"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('gcc' 'make' 'gtk2' 'glib2' 'openal' 'freealut')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("http://sourceforge.net/projects/spacezero/files/latest/download?source=files")
# md5sums were done in Thu 06/23/11
md5sums=('21774dbaa180d366d483ab291f12687b')
build() {
  cd "${srcdir}"
  rename "download?source=files" "$pkgname-$pkgver.tar.gz" "download?source=files"

  tar xvf $pkgname-$pkgver.tar.gz
  cd "${pkgname}"
  make
  cd bin 
  mv spacezero ../
}

package() {
    cd "$srcdir/$pkgname"
    mkdir -p $pkgdir/usr/bin
#    mkdir -p $pkgdir/usr/share/doc/
    install -c $pkgname $pkgdir/usr/bin/
}

