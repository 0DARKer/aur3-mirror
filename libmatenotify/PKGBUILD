pkgname=libmatenotify
pkgver=2011.12.16
pkgrel=1
pkgdesc="Desktop notification library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('gdk-pixbuf2')
makedepends=('gtk2' 'gobject-introspection')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://matsusoft.com.ar/projects/mate/"
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('03c95122261247c7c9338c9d0c7b5fd715918e6e2d3c2a0eb11fb4250fb1db3c')


build() {
    cd "${srcdir}"
    ./autogen.sh \
        --prefix=/usr \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}"
    make DESTDIR="${pkgdir}" install || return 1
}
