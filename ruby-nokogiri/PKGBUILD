# Contributor: Sebastien Duquette <ekse.0x@gmail.com>
pkgname=ruby-nokogiri
pkgver=1.4.3.1
pkgrel=1
pkgdesc="an HTML, XML, SAX, & Reader parser with the ability to search documents via XPath  or CSS3 selectors."
arch=(any)
url="http://nokogiri.org/"
license=('MIT')
depends=('ruby' 'libxslt') 
makedepends=('rubygems')
source=("http://gems.rubyforge.org/gems/nokogiri-$pkgver.gem")
noextract=("nokogiri-$pkgver.gem")
md5sums=('36d092a5f40b8dece5b32d434cc73fd2')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  #  makepkg will barf when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" nokogiri-$pkgver.gem
}

# vim:set ts=2 sw=2 et:

