# Maintainer: Jakub Klinkovsk√Ω <kuba.klinkovsky@gmail.com>

pkgname=mythes-cs
pkgver=20130211
pkgrel=1
pkgdesc="Czech thesaurus"
arch=("any")
url="https://wiki.archlinux.org/index.php/LibreOffice#Language_Aids"
license=("custom")
optdepends=("libmythes: offers thesaurus library functions")
source=("https://api.opensuse.org/public/source/LibreOffice:Unstable/libreoffice-thesaurus/thes_cs_CZ_v2.tar.bz2?rev=a640a769b6c4ccc48ee86fde14ddf598&")
md5sums=("85abefe7d6cf92adbbd33c61d0ff5000")

package() {
    cd "$srcdir"
    install -dm755 ${pkgdir}/usr/share/mythes
    install -m644 th_cs_CZ_v2.* ${pkgdir}/usr/share/mythes

    # the symlinks
    install -dm755 ${pkgdir}/usr/share/myspell/dicts
    pushd ${pkgdir}/usr/share/myspell/dicts
        for file in ${pkgdir}/usr/share/mythes/*; do
            ln -sv /usr/share/mythes/$(basename $file) .
        done
    popd

    # docs
    install -dm755 ${pkgdir}/usr/share/doc/$pkgname
    install -m644 README_th_cs_CZ_v2.txt ${pkgdir}/usr/share/doc/$pkgname
}
