pkgname=ruby-ldap
pkgver=0.9.12
pkgrel=1
pkgdesc="Extension module for Ruby providing an interface to some common LDAP libraries."
arch=('i686' 'x86_64')
url="http://ruby-ldap.rubyforge.org/"
license=('BSD')
depends=('ruby' 'libldap')
makedepends=('rubygems')

