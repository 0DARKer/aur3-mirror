#!/bin/bash

# svc_event                      # args: <svc>
#

# Allow to source this for speed even when symlinked
hook_name=${SPLASH_HOOK:-${0##*/}}
event=${hook_name%-*}

work_dir=$spl_cachedir/arch-banner-icons # avoid using symlink name

# Lookup icon position for service
num_file=$work_dir/svcicon_num_$1
if [[ -f $num_file ]]; then
	splash_comm_send update_svc _icon_svc_$( <"$num_file" ) $event
fi
