pkgname=python-pyopengl
_pkgname=PyOpenGL
pkgver=3.0.1a2
pkgrel=1
arch='any'
pkgdesc="PyOpenGL is the cross platform Python binding to OpenGL and related APIs."
depends=('python')
license='BSD'
url="http://pyopengl.sourceforge.net"
source=("http://sourceforge.net/projects/pyopengl/files/${_pkgname}/${pkgver}/${_pkgname}-${pkgver}.tar.gz/download")
md5sums=('347f2829d357157c6755eeeee14e59a4')
build() {
  cd "${srcdir}/${_pkgname}-$pkgver/"
  python setup.py install --root=${pkgdir}
}
