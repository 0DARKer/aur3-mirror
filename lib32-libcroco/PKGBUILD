# Maintainer : SpepS <dreamspepser at yahoo dot it>

_name=libcroco
pkgname=lib32-$_name
pkgver=0.6.3
pkgrel=1
pkgdesc="GNOME CSS2 parsing and manipulation toolkit"
arch=('x86_64')
url="http://www.gnome.org/"
license=('LGPL')
depends=("$_name" 'lib32-glib2' 'lib32-libxml2')
makedepends=('gcc-multilib')
source=("http://ftp.gnome.org/pub/gnome/sources/$_name/0.6/$_name-$pkgver.tar.bz2")
options=('!libtool')
md5sums=('e1e93eeff4367c896f3959af34ba20eb')

build() {
  cd "$srcdir/$_name-$pkgver"

  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  ./configure --prefix=/usr \
              --libdir=/usr/lib32 \
              --enable-static=no \
  make
}

package() {
  cd "$srcdir/$_name-$pkgver"

  make DESTDIR="$pkgdir/" install

  # rm unneeded files
  rm -rf ${pkgdir}/usr/{bin,include,share}
}
