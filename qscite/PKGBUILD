# Maintainer: Jared Sutton <jpsutton@gmail.com>

pkgname=qscite
pkgver=0.5_svn190
pkgrel=1
pkgdesc="A code editor written in C++ and Qt4; A clone of SciTE."
arch=('i686' 'x86_64')
url="http://qscite.googlecode.com/"
license=('GPL')
depends=('qscintilla' 'qt')
source=(http://qscite.googlecode.com/files/qscite-r190.tar.gz)
md5sums=('54691c3bf6c1f0de642c39705eab5a4a')

build() {
  cd $srcdir/$pkgname
  qmake qscite-release.pro || return 1
  make || return 1
  mkdir -p $pkgdir/usr/bin
  mv build/qscite-release $pkgdir/usr/bin/qscite
}