# Contributor: Nathan Owe <ndowens04 at gmail>
pkgname=mr
pkgver=1.02
pkgrel=1
pkgdesc="a Multiple Repository management tool"
arch=('i686' 'x86_64')
url="http://kitenet.net/~joey/code/mr/"
license=('GPL')
depends=('perl' 'perl-lwp-simple')
source=(ftp://ftp.debian.org/debian/pool/main/m/mr/mr_$pkgver.tar.gz)
md5sums=('62b6457b54c3cf8907b3ca248d15e1eb') 

build() {
  cd $srcdir/$pkgname
  make || return 1
  install -d $pkgdir/usr/bin $pkgdir/usr/share/$pkgname $pkgdir/usr/share/man
  install -Dm755 mr webcheckout $pkgdir/usr/bin/
  install -Dm644 README TODO mrconfig mrconfig.complex lib/* $pkgdir/usr/share/$pkgname/
  install -Dm644 mr.1 webcheckout.1 $pkgdir/usr/share/man/
}

# vim:set ts=2 sw=2 et:
