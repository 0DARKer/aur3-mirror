# Contributor: Nathan Owe <ndowens04 at gmail>
pkgname=mr
pkgver=0.39
pkgrel=1
pkgdesc="a Multiple Repository management tool"
arch=('i686' 'x86_64')
url="http://kitenet.net/~joey/code/mr/"
license=('GPL')
depends=('perl' 'perl-lwp-simple')
source=(ftp://ftp.debian.org/debian/pool/main/m/mr/mr_0.39.tar.gz)
md5sums=('57d7cc03fe8dce202f43bd3276cd7b8f') 

build() {
  cd $srcdir/$pkgname
 install -d $pkgdir/usr/share/$pkgname $pkgdir/usr/lib/$pkgname $pkgdir/usr/share/man
  make || return 1
 install -D README TODO mr mrconfig mrconfig.complex webcheckout $pkgdir/usr/share/$pkgname/
 install -D mr.1 webcheckout.1 $pkgdir/usr/share/man/
install -D lib $pkgdir/usr/share/$pkgname
install -Dm755 $pkgdir/usr/share/$pkgname/mr $pkgdir/usr/bin/mr
install -Dm755 $pkgdir/usr/share/$pkgname/webcheckout $pkgdir/usr/bin/webcheckout
}

# vim:set ts=2 sw=2 et:
