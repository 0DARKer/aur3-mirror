# Maintainer: Nicola Fontana <ntd at entidi.it>

pkgname=gtk2panel
pkgver=0.1.0
pkgrel=2
pkgdesc="A bleeding edge panel heavily based on the Gtk+2 stack"
arch=('i686' 'x86_64')
url="http://gtk2panel.entidi.com/"
license=('LGPL')
depends=('gtk2>=2.16.0' 'libwnck')
makedepends=('glade>=3.6.0')
optdepends=('glade>=3.6.0: panel editing support')
source=("http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('3490eb37dc3e465f0b9f55bc69d0479d')

build() {
    cd $srcdir/$pkgname-$pkgver
    ./configure --prefix=/usr --enable-libwnck --enable-glade || return 1
    make DESTDIR=$pkgdir install || return 1
}
