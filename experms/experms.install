# arg 1:  the new package version
# arg 2:  the old package version

post_install() {
  echo -e "Before using Experms, you need to edit the configuration-file '/etc/experms.conf'.\nSee 'man experms' for more information."
}

post_upgrade() {
  echo -e "WARNING: Experms is totally rewritten. Your configuration-file won't work with the new version.\nSee 'man experms' for more information."
}
