# Maintainer: Laszlo Papp <djszapi2 at gmail.com>
pkgname=avra
pkgver=1.2.3a
pkgrel=3
pkgdesc="Atmel AVR Assembler"
url="http://avra.sourceforge.net/"
license=("GPL")
depends=('glibc')
arch=('i686')
source=(http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('738a40e52bb5b836ee7fd816669a99c2')

build() {
	cd ${srcdir}/${pkgname}-1.2.3
	aclocal
	autoconf
	automake -a
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=${pkgdir} install
}
