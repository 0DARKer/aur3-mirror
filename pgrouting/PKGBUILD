# Contributor: Andre Klitzing <aklitzing () online () de>

pkgname=pgrouting
pkgver=1.03
pkgrel=1
pkgdesc="Adds routing functionality to PostGIS/PostgreSQL"
arch=('i686' 'x86_64')
url="http://pgrouting.postlbs.org"
license=('GPL')
depends=('postgis' 'gcc-libs')
makedepends=('cmake>=2.3' 'boost>=1.35')
source=(http://files.postlbs.org/pgrouting/source/pgRouting-$pkgver.tgz)
md5sums=('ee700d18a984b8fd78c1a739ca078683')

build() {
  cd $srcdir/$pkgname
  # TSP needs package GAUL and DD needs CGAL
  #cmake . -DWITH_TSP=ON -DWITH_DD=ON
  cmake . || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
