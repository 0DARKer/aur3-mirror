# Contributor: nggtony <nggtony@yahoo.it>
pkgname=darksnow
pkgver=0.6.1
pkgrel=1
pkgdesc="Live audio streamer. Records audio from an audio interface, encodes it and sends it to a streaming server."
url="http://darksnow.radiolivre.org/index.en.html"
license="GPL"
arch=(i686)
depends=('darkice' 'gtk2')
source=(http://darksnow.radiolivre.org/darksnow-0.6.1.tar.gz)
md5sums=('c6fea6be8ed1efef2d609cd8abc96f2a')

build() {
cd ${startdir}/src/darksnow-${pkgver}/
./configure --prefix=/usr 
make || return 1
make PREFIX=${startdir}/pkg/usr install
}
