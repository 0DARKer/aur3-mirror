# Maintainer: Jean-Philippe Gagn√© Guay <jeanphilippe150 at gmail dot com>

pkgname=sinit
pkgver=0.9.1
pkgrel=1
pkgdesc="A simple init"
url="http://tools.suckless.org/sinit/"
arch=('i686' 'x86_64')
license=('MIT')
install=sinit.install
source=('http://dl.suckless.org/sinit/sinit-0.9.1.tar.gz')
md5sums=('26b51d2b3291468dffc55ef2bc1b4aaf')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" PREFIX=/usr install
  install -m644 -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -m644 -D README "$pkgdir/usr/share/doc/$pkgname/README"
}
