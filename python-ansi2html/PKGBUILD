_name=ansi2html
pkgname=python-${_name}
pkgver=0.5.2
pkgrel=1
pkgdesc="Documentation tool"
arch=('i686' 'x86_64')
url="http://pypi.python.org/pypi/ansi2html/0.5.2"
license=('GPL')
depends=('python2' )
makedepends=()
source=(http://pypi.python.org/packages/source/a/ansi2html/ansi2html-0.5.2.tar.gz#md5=2e50a9e995836c65104b585b046c290d)
md5sums=('2e50a9e995836c65104b585b046c290d')

build() 
{
  cd ${srcdir}/${_name}-${pkgver}

  python2 setup.py install --root=${pkgdir}  --optimize=1 || return 1
}

