# Maintainer: Sergei Lebedev <superbobry@gmail.com>
# Contributor: Guillem Rieu <guillemr@gmx.net>
pkgname=ocaml-camlmix
pkgver=1.3.0
pkgrel=1
pkgdesc="A template system for OCaml."
arch=('i686' 'x86_64')
url="http://martin.jambon.free.fr/camlmix/"
license=('BSD')
depends=('ocaml')
source=(http://martin.jambon.free.fr/camlmix/camlmix-$pkgver.tar.bz2)
md5sums=('fc15733c6fe98865de42935563a960d1')

build() {
  cd "$startdir/src/${pkgname/ocaml-/}-$pkgver"

  make || return 1
}

package() {
  cd "$startdir/src/${pkgname/ocaml-/}-$pkgver"

  mkdir -p $pkgdir/usr/bin  # Damn those Makefiles!
  env PREFIX=$pkgdir/usr make install || return 1
  install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
