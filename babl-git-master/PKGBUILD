pkgname=babl-git-master
pkgver=0.1.5
pkgrel=1
arch=('i686' 'x86_64')
# For changelog http://gimptest.flamingtext.com:8080/job/gimp-distcheck/changes
pkgdesc='babl is a dynamic, any to any, pixel format translation 
library'
license=('GPL')
url='http://www.gegl.org/babl'
#http://www.chromecode.com/2009/10/nightly-gimp-gegl-babl-tarball-builds.html

conflicts=('babl' 'babl-git')
provides=('babl')
depends=('glib2>=2.10' 'libpng')

source=('http://gimptest.flamingtext.com:8080/job/babl-distcheck/lastSuccessfulBuild/artifact/babl-git-master.tar.bz2')
md5sums=('cb29be54027a92eb3d3aeab8cdee3e88')
build() {
	cd $srcdir/babl-$pkgver
	./configure --prefix=/usr
	make
}
package(){
	cd $srcdir/babl-$pkgver
	make DESTDIR="$pkgdir" install

}
