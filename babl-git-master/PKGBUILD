pkgname=babl-git-master
pkgver=0.1.5
pkgrel=1
arch=('i686' 'x86_64')

pkgdesc='babl is a dynamic, any to any, pixel format translation 
library'
license=('GPL')
url='http://www.gegl.org/babl'
#http://www.chromecode.com/2009/10/nightly-gimp-gegl-babl-tarball-builds.html

conflicts=('babl' 'babl-git')
provides=('babl')
depends=('glib2>=2.10' 'libpng')

source=("https://dl.dropbox.com/s/n9q855pq8vv47ko/babl-git-master.tar.bz2?dl=1")
#source=("http://www.pumbur.net/file/babl-$pkgver.tar.bz2")
md5sums=('5419295102856d7f87d6ad466275e1b4')

build() {
	cd $srcdir/babl-$pkgver
	./configure --prefix=/usr
	make
}
package(){
	cd $srcdir/babl-$pkgver
	make DESTDIR="$pkgdir" install

}
