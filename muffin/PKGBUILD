# Maintainer: Eddotan 
# Contributor: Eddotan, ErunamoJAZZ 
pkgname=muffin
pkgver=0.1.9.3
pkgrel=1
pkgdesc="An assistant translation of anime written in Python using wxPython and MplayerCtrl libraries."
arch=('i686')
license=('GPL')
url="http://code.google.com/p/muffin/"
depends=(python2 wxpython python-simplejson mplayer)
source=("http://gplprojects87.net46.net/muffin_0.1.9.3_alpha.tar.gz")
md5sums=('32a6c22e9815a41ffa3b5cd609d25a15')

build() {

mkdir -p $pkgdir/usr/{share,bin}

cp -Rf $startdir/src/muffin $pkgdir/usr/share/
ln -s $pkgdir/usr/share/$pkgname/MuffinMain.py $pkgdir/usr/bin/muffin

}
