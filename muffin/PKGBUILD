# Maintainer: Eddotan <fuzakenaideyo7@gmail.com>
pkgname=muffin
pkgver=0.1.9.3
pkgrel=3
pkgdesc="An assistant translation of anime written in Python using wxPython and MplayerCtrl libraries."
arch=('i686')
license=('GPL')
install=muffin.install
url="http://code.google.com/p/muffin/"
depends=(python2 wxpython python-simplejson mplayer)
source=("http://gplprojects87.net46.net/muffin_0.1.9.3_alpha.tar.gz" "muffin")
md5sums=('7a7630b7ccfe8aac916be277061f33e4'
         'ca8f048dc18aed23c37366fb650df1e4')

build() {

mkdir -p $pkgdir/usr/{share,bin}

msg "Copiando archivos y creando enlace..."
cp -Rf $startdir/src/muffin $pkgdir/usr/share/
cp ../muffin $pkgdir/usr/bin/muffin
sleep 1
chmod 777 $pkgdir/usr/bin/muffin

}
