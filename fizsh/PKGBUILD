# Maintainer: Rogof <fake.bios@gmail.com>
pkgname=fizsh
pkgver=1.0.0
pkgrel=1
pkgdesc="The Friendly Interactive ZSHell"
arch=('any')
url="http://sourceforge.net/projects/fizsh/"
license=('unknown')
depends=('zsh')
install=fizsh.install
options=(!zipman)
source=("http://downloads.sourceforge.net/project/fizsh/$pkgname-$pkgver.tar.gz")
sha256sums=('a5d620602099f8bffee8ed7bac4b73578866ca9f1f707ea9966d3fca6fb5cd5f')

build() {
	cd "$srcdir/$pkgname-$pkgver"
}

package() {
	cd "$srcdir/$pkgname-$pkgver"

	cp -r ./usr ./etc ${pkgdir}
	install -Dm755 usr/bin/fizsh ${pkgdir}/usr/bin/fizsh

	# modify_etc_shells is not installed, so we remove its manpage.
	rm -rf ${pkgdir}/usr/share/man/man8
}

# vim:set ts=2 sw=2 et:
