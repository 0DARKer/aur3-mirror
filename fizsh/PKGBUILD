# Maintainer: Rogof <fake.bios@gmail.com>
pkgname=fizsh
pkgver=1.0.1
pkgrel=2
pkgdesc="The Friendly Interactive ZSHell"
arch=('any')
url="http://sourceforge.net/projects/fizsh/"
license=('CUSTOM')
depends=('zsh')
install=fizsh.install
options=(!zipman)
source=("http://downloads.sourceforge.net/project/fizsh/$pkgname-$pkgver.tar.gz")
sha256sums=('8acc0f25886370c075f68d2bc5f91f4f343c87734bfb59e62c13d2a48f4b71c5')

build() {
	cd "$srcdir/$pkgname-$pkgver"
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	mkdir -p ${pkgdir}/etc/fizsh ${pkgdir}/usr/share/{doc/fizsh,man/man1}
	install -Dm755 scripts/fizsh ${pkgdir}/usr/bin/fizsh
	install scripts/{fizshrc,zsh-history-substring-search-backward,zsh-syntax-highlighting,fizsh-prompt} \
	        ${pkgdir}/etc/fizsh
	install -m644 doc/{zsh-syntax-highlighting.readme,changelog.gz} \
	              ${pkgdir}/usr/share/doc/fizsh
	install -Dm644 doc/copyright ${pkgdir}/usr/share/licenses/fizsh/LICENSE
	install -m644 man/fizsh.1.gz ${pkgdir}/usr/share/man/man1
}

# vim:set ts=2 sw=2 et:
