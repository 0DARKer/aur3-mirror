post_install() {
	if [ ! "`grep /usr/bin/fizsh etc/shells`" ]; then
		echo "updating /etc/shells... done."
		sed -i "s|/bin/bash|/bin/bash\n/usr/bin/fizsh|" etc/shells
	fi
}

post_upgrade() {
	post_install
}

pre_remove() {
	echo -ne "updating /etc/shells... \n"
	sed -i '/^\/usr\/bin\/fizsh/d' /etc/shells
}
