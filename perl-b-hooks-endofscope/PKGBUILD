pkgname='perl-b-hooks-endofscope'
pkgver='0.09'
pkgrel='1'
pkgdesc="Execute code after a scope finished compilation"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-sub-exporter' 'perl-variable-magic>=0.34')
url='http://search.cpan.org/dist/B-Hooks-EndOfScope'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/B-Hooks-EndOfScope-0.09.tar.gz')
md5sums=('83d941d374d6718cdd5c2721c40f660f')

build() {
  DIST_DIR="${srcdir}/B-Hooks-EndOfScope-0.09"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
