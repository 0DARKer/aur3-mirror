# Maintainer: L42y <423300@gmail.com>
pkgname=banshee-extension-doubanfm-hg
pkgver=9
pkgrel=1
pkgdesc="Douban FM extension for Banshee"
arch=('i686' 'x86_64')
url="http://code.google.com/p/banshee-doubanfm/"
license=('MIT')
depends=('banshee')
makedepends=('mercurial')
provides=('banshee-extension-doubanfm')
conflicts=('banshee-extension-doubanfm')
install=

_hgroot="https://banshee-doubanfm.googlecode.com/hg/"
_hgrepo="banshee-doubanfm"

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [ -d $_hgrepo ] ; then
    cd $_hgrepo
    hg pull -u
    msg "The local files are updated."
  else
    hg clone $_hgroot $_hgrepo
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  #
  # BUILD HERE
  #

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_hgrepo-build"
  make DESTDIR="$pkgdir/" install
} 
