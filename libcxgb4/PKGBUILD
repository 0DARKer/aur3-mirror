# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=libcxgb4
pkgver=1.3.0
pkgrel=1
pkgdesc="Chelsio T4 RNIC Open Fabrics userspace library"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibverbs')
source=("http://www.openfabrics.org/downloads/cxgb4/${pkgname}-${pkgver}.tar.gz")
# cksum start
md5sums=('765fd7c08879a12c765edd360d7ef805')
sha512sums=('ae4c061553cc0eda6cfd75581f6e5943c0410bc553ae6a3e226c40f187fa0e35cdcdf78f346b512286a09bd51cec8592e4b186cb0c3d15a27ec97e8821e4de29')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}