# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=gtk-youtube-viewer
pkgver=20110403
pkgrel=1
pkgdesc="GTK Interface for YouTube-Viewer (
http://aur.archlinux.org/packages.php?ID=37779 )"
arch=('any')
url="https://github.com/trizen/gtk-youtube-viewer"
license=('GPL')
makedepends=('git')
depends=('gtk2-perl' 'mplayer' 'perl-libwww')
optdepends=("gcap: for retrieving Youtube closed captions. [in AUR]")
_gitroot="git://github.com/trizen/$pkgname.git"
_gitname="$pkgname"

build() {
    cd "$startdir/src"
  
    msg "Connecting to github GIT server...."
    
    if [ -d "$startdir/src/$_gitname" ] ; then
        cd $_gitname && git pull origin
    else
        git clone "$_gitroot"
        cd $_gitname
    fi
}
package() {
  cd $_gitname
  make DESTDIR="$pkgdir" install 
} 