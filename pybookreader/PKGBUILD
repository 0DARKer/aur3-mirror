# Contributor: Shuthdar <shuthdar@gmail.com>
pkgname=pybookreader
pkgver=0.5.0
pkgrel=2
pkgdesc="Book Reader for Linux/FreeBSD/other operation systems"
url="http://sourceforge.net/projects/pybookreader/"
license="GPL"
depends=('python' 'gtk2' 'pygtk' 'libxml2')
arch=('i686' 'x86_64')
source=(http://pybookreader.narod.ru/PyBookReader-$pkgver.tar.gz)
md5sums=(9c36e3c8f3910884655bb9f87ae45374)

build() {
  cd $startdir/src/PyBookReader-$pkgver
  python setup.py install --home=$startdir/pkg/usr
  cd $startdir/pkg/usr/bin
  echo 'PYTHONPATH=/usr/lib/python pybr' >> pybookreader
  chmod +x pybookreader
  echo 'PYTHONPATH=/usr/lib/python ob' >> ornamentbook
  chmod +x ornamentbook
}
