# Maintainer: sigma_g <sigma_g@melix.net>
pkgbase="pxe"
pkgname="pxe"
pkgver="1.4.2"
pkgrel="3"
pkgdesc="Standalone pxe daemon"
url="http://www.kano.org.uk/projects/pxe/"
license=('GPL2')
source=('http://www.kano.org.uk/projects/pxe/pxe-1.4.2.tar.gz' 'Makefile.patch')
arch=('any')
depends=()
md5sums=('89dcb359a4c4fce475633dd771e77aa7'
         '4cdbc11f0632cf3d9cb5f0fe8abdf00b')
                                    
build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure
    patch -Np0 Makefile $startdir/Makefile.patch || return 1
    make PREFIX=/usr sysconfdir=/etc
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make PREFIX=/usr sysconfdir=/etc DESTDIR=$pkgdir install
}
