pkgname=divideandsucceed
pkgver=0.9.1
pkgrel=1
pkgdesc="A game in which you must divide polygons into the rigth number of equal parts."
arch=('i686' 'x86_64')
url="http://projects.haxx.es/p/divide-and-succeed/"
license=('GPL')
depends=('sdl' 'sdl_ttf')
makedepends=('make' 'cmake')
conflicts=()
source=('http://projects.haxx.es/media/upload/divide-and-succeed/files/divide-and-succeed-0.9.1.tar.gz')
md5sums=('221185789a7b9119ce3dd8e5e5f96069')

build() {
	cd $srcdir/divide-and-succeed-0.9.1

	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make install DESTDIR=$pkgdir
}
