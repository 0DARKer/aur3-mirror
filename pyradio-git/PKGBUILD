# Maintainer: aksr <aksr at t-com dot me>

pkgname=pyradio-git
pkgver=20100001
pkgrel=1
pkgdesc="PyRadio, a console based Internet radio player."
arch=(any)
url="http://www.coderholic.com/pyradio/"
license=('MIT')
depends=('python2' 'ncurses' 'mplayer')
makedepends=('git')
provides=('pyradio')
conflicts=('pyradio')
source=(pyradio.1)
md5sums=('0439992163825668b68ea3068c500680')

_gitroot="https://github.com/coderholic/pyradio.git"
_gitname="pyradio"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi
  msg "GIT checkout done or server timeout"

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  msg ""
  sed -i '1s,env python,&2,' ${srcdir}/${_gitname}/pyradio

  msg "Installing pyradio..."
  mkdir -p $startdir/pkg/usr/{bin,share/man/man1/,share/doc}
  install -Dm755 "${srcdir}/${_gitname}/pyradio" "${pkgdir}/usr/bin/pyradio"
  install -Dm644 "${srcdir}/${_gitname}/LICENCE" "${pkgdir}/usr/share/doc/LICENCE"
  install -Dm644 "${srcdir}/${_gitname}/README.md" "${pkgdir}/usr/share/doc/README.md"
  install -Dm644 "${srcdir}/${_gitname}/stations.csv" "${pkgdir}/usr/share/doc/stations.csv"
  install -Dm644 "${srcdir}/pyradio.1" "${pkgdir}/usr/share/man/man1/pyradio.1"
} 
