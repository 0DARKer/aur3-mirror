# Maintainer: Arseny Vakhrushev <arseny.vakhrushev@gmail.com>

pkgname=php-amf3
pkgver=1.2.1
pkgrel=1
pkgdesc="PHP-AMF3 is an AMF3 encoder/decoder extension for the PHP programming language"
arch=('i686' 'x86_64')
url="http://neoxic.me/php-amf3/"
license=('MIT')
depends=('php')
makedepends=('php')
source=(https://github.com/neoxic/$pkgname/archive/v$pkgver.tar.gz)
md5sums=('37842a138f53074e282eea9cfd3ee4d5')

build() {
  cd $srcdir/$pkgname-$pkgver
  phpize || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make INSTALL_ROOT=$pkgdir install || return 1
  echo ';extension=amf3.so' > amf3.ini
  install -Dm644 amf3.ini $pkgdir/etc/php/conf.d/amf3.ini
}
