#Author/maintainer : ahmet emre <aecepoglu at gmail>

pkgname="rssproc"
pkgver="1.1"
pkgrel=1
pkgdesc="A minimal tool that reads rss data and prints items in a desired format"
url="http://bitbucket.org/aecepoglu/rssproc"
license=('GPL')
arch=("i686" "x86_64")
depends=("expat")
provides=("rssproc")
makedepends=("git")
_gitroot="https://bitbucket.org/aecepoglu"
_gitrepo="rssproc"
#source=("::git+https://bitbucket.org/aecepoglu/rssproc")

build() {
	git clone $_gitroot/$_gitrepo
	cd $srcdir/${_gitrepo}
	make
}

package() {
	mkdir -p $pkgdir/usr/bin
	cd $srcdir/${_gitrepo}
	make DESTDIR="$pkgdir/usr/bin" install
}
