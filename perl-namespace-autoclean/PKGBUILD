options=('!emptydirs')
depends=('perl-b-hooks-endofscope' 'perl-namespace-clean>=0.20')
makedepends=('perl-moose' 'perl-sub-name')
url='http://search.cpan.org/dist/namespace-autoclean'
source=('http://search.cpan.org/CPAN/authors/id/B/BO/BOBTFISH/namespace-autoclean-0.13.tar.gz')
