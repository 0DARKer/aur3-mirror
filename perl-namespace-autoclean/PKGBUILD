pkgname='perl-namespace-autoclean'
pkgver='0.11'
pkgrel='1'
pkgdesc="Keep imports out of your namespace"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-b-hooks-endofscope' 'perl-class-mop>=0.80' 'perl-moose' 'perl-namespace-clean>=0.11' 'perl-sub-name')
url='http://search.cpan.org/dist/namespace-autoclean'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/namespace-autoclean-0.11.tar.gz')
md5sums=('25a1339256c844332637331c80a2f62a')

build() {
  DIST_DIR="${srcdir}/namespace-autoclean-0.11"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
