# Maintainer: FadeMind <fademind@gmail.com>

_plugin_name=mozilla_archive_format_with_mht_and_faithful_save
_plugin_version=3.0.3
pkgdesc="Opens and saves all the Web sites in a single file. It supports MHTML (MHT)and archives MAF based on ZIP archive system."
license=('MPL')

pkgname=firefox-extension-mozilla-archive-format
pkgver=$_plugin_version
pkgrel=1
arch=('any')
url="https://addons.mozilla.org/firefox/addon/mozilla-archive-format/"
depends=("firefox")
source=("https://addons.cdn.mozilla.net/user-media/addons/212/mozilla_archive_format_with_mht_and_faithful_save-3.0.3-sm+fx.xpi")

package() {
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  install -d $dstdir
  rm *.xpi
  mv * $dstdir
}
sha256sums=('46591d792b86cface379692ba8fe3bf38af099a52da053da741de4bd8b9cdf84')


