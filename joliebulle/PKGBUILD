# Maintainer: Le_suisse <lesuisse.dev at gmail dot com>

pkgname=joliebulle
pkgver=2.8
softrev=.0
pkgrel=1
pkgdesc="Brewing assistant and beer recipe design"
arch=('any')
url="http://joliebulle.tuxfamily.org/"
license=('GPL3')
depends=('python' 'pyqt')
source=("http://download.tuxfamily.org/joliebulle/$pkgname$pkgver/$pkgname-$pkgver$softrev.tar.gz")
md5sums=('8a79e6842a90bd9b36b12415857c05a3')

package() {
  cd "$srcdir/Joliebulle-$pkgver$softrev"
  python3 setup.py install --root="$pkgdir/" --optimize=1
}
