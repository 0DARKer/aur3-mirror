pkgname=simple-scan
pkgver=2.32.0.1
_pkgver=2.32
pkgrel=1
pkgdesc="Simple scanning utility"
arch=('i686' 'x86_64')
url="http://launchpad.net/simple-scan"
license=('GPL3')
depends=('sane' 'gconf')
makedepends=('gettext' 'gnome-doc-utils' 'intltool')
install=${pkgname}.install
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/${_pkgver}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('9c0682f1aa6b338222b973fec6162e87')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
    --with-gconf-schema-file-dir=/usr/share/gconf/schemas \
    --disable-schemas-install
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR=${pkgdir} install
}
