# CPAN Name  : MooseX-App-Cmd
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-moosex-app-cmd'
pkgver='0.06'
pkgrel='1'
pkgdesc="Mashes up MooseX::Getopt and App::Cmd."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-app-cmd>=0.3' 'perl-getopt-long-descriptive' 'perl-moose>=0.86' 'perl-moosex-getopt>=0.18' 'perl-test-use-ok')
url='http://search.cpan.org/dist/MooseX-App-Cmd'
source=('http://search.cpan.org/CPAN/authors/id/N/NU/NUFFIN/MooseX-App-Cmd-0.06.tar.gz')
md5sums=('ac8cf120e44aa99ac35d6e6baec2a265')

build() {
  DIST_DIR="${srcdir}/MooseX-App-Cmd-0.06"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
