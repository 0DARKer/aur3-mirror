# Contributor: Timur Antipin < kosmocap (at) gmail.com >

pkgname=vacuum
pkgver=1.2.1
pkgrel=2
pkgdesc='Cross-platform Qt-based jabber client'
arch=('i686' 'x86_64')
url='http://code.google.com/p/vacuum-im/'
license=('GPL3')
conflicts=('vacuum-svn')
depends=('qt4>=4.5.2' 'openssl' 'libidn' 'zlib' 'libxss' 'qtwebkit')
optdepends=('libminizip: using system library')
makedepends=('make' 'cmake')
source=("http://vacuum-im.googlecode.com/files/vacuum-${pkgver}.tar.xz")
md5sums=('554db6ddd5d3b7d4655270bd796aee80')

build() {
  cd "${srcdir}/vacuum-${pkgver}"
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DQT_QMAKE_EXECUTABLE=/usr/bin/qmake4 .

  msg "Starting make..."
  make
}

package() {
  cd "${srcdir}/vacuum-${pkgver}"
  
  msg "Installing to package directory..."
  make DESTDIR="${pkgdir}" install
}
