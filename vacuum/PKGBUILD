# Contributor: Timur Antipin < kosmocap (at) gmail.com >

pkgname=vacuum
pkgver=1.0.2
pkgrel=3
pkgdesc='Cross-platform Qt-based jabber client'
arch=('i686' 'x86_64')
url='http://code.google.com/p/vacuum-im/'
license=('GPL3')
conflicts=('vacuum-svn')
depends=('openssl' 'qt>=4.5.2' 'qt<4.7' 'nas')
makedepends=('make')
source=("http://vacuum-im.googlecode.com/files/vacuum-${pkgver}-source.tar.gz")
md5sums=('96f6a1510f9a9a94e0a90fc060924fa0')

build() {
  cd "${srcdir}/vacuum-${pkgver}" || return 1
  qmake INSTALL_PREFIX=/usr -recursive vacuum.pro || return 1
  make || return 1
  make INSTALL_ROOT="${pkgdir}" install || return 1

  install -Dm644 "${srcdir}/vacuum-${pkgver}/src/packages/linux/vacuum.desktop" \
    "${pkgdir}/usr/share/applications/vacuum.desktop" || return 1

  for size in 16 24 32 48 64 96 128 ; do \
    install -Dm644 "${srcdir}/vacuum-${pkgver}/resources/menuicons/shared/mainwindowlogo${size}.png" \
      "${pkgdir}/usr/share/icons/hicolor/${size}x${size}/apps/vacuum.png" || return 1 ; \
  done
}
