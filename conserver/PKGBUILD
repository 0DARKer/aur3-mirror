# Contributor: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=conserver
pkgver=8.1.17
pkgrel=2
pkgdesc="an application that allows multiple users to watch a serial console at the same time."
arch=('i686' 'x86_64')
url="http://www.conserver.com"
license=('BSD')
depends=('sh')
source=(http://www.conserver.com/${pkgname}-${pkgver}.tar.gz)
md5sums=('9bd085daa5450ca7b45e4187ec6eff1f') 

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr 
  make
  make bindir=${pkgdir}/usr/bin mandir=${pkgdir}/usr/share/man sbindir=${pkgdir}/usr/sbin/ libdir=${pkgdir}/usr/lib datadir=${pkgdir}/usr/share/${pkgname} install
install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
