# Maintainer: Peter Simons <simons@cryp.to>
pkgname=parallel
pkgver=20110522
pkgrel=1
pkgdesc="a shell tool for executing jobs in parallel"
arch=('any')
url='http://www.gnu.org/software/parallel/'
license=('GPL3')
groups=()
depends=('perl')
makedepends=()
provides=()
conflicts=('moreutils')		# provides a script called 'parallel', too
replaces=()
backup=()
options=(!makeflags)		# the build fails when run with -j<n> for n>1
install=
source=( http://ftpmirror.gnu.org/$pkgname/$pkgname-$pkgver.tar.bz2 )
noextract=()
md5sums=('83c12186d740698cddb3795420d0e1f8')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
