# Maintainer: Tomasz Zok <tomasz.zok [at] gmail.com>
pkgname=mdsplus
pkgver=5.0
pkgrel=1
pkgdesc="MDSplus is a set of software tools for data acquisition and storage and a methodology for management of complex scientific data"
arch=('i686' 'x86_64')
url="http://www.mdsplus.org"
license=('BSD')
depends=('java-environment')
source=(http://www.mdsplus.org/dist/fc15/stable/SOURCES/mdsplus-$pkgver.tar.gz)
md5sums=('b60b04ba5bd8999340b6d2b223bba388')

build() {
  cd "$srcdir/$pkgname"
  ./configure --prefix=$pkgdir/opt/mdsplus --with-jdk=$J2SDKDIR
  make LD=gcc
}

package() {
  cd "$srcdir/$pkgname"
  make install
}

# vim:set ts=2 sw=2 et:
