# Maintainer: David Herrmann <dh.herrmann@gmail.com>

pkgname=libgudev
pkgver=220
pkgrel=1
pkgdesc="udev GObject bindings"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://developer.gnome.org/libgudev"
depends=('systemd' 'glib2')
makedepends=('gobject-introspection')
conflicts=('libsystemd<220' 'systemd-git<220')
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
#source=($pkgname-$pkgver.tar.xz)
sha256sums=('cc5a1ee7ce47fbd752cdfea8ab886ed8eea9eaf665ee0579271873ceca4bcbcd')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

check() {
  cd $pkgname-$pkgver
  make check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
