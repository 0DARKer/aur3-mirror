# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=mystuff
pkgver=1.6
pkgrel=2
pkgdesc="Create a custom menu in a popup window"
url="http://kornelix.squarespace.com/mystuff"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2' 'xdg-utils')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('1735a57b4db1619b189914bfb1832f28')

build() {
  cd $srcdir/myStuff-$pkgver
  export PREFIX=/usr 
  sed -i 's+xdg-deskto+#xdg-deskto+' Makefile
  make 
  sed -i '8,9d' data/desktop 
}

package() {
  cd $srcdir/myStuff-$pkgver
  install -Dm644 data/desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop 
  make MENUFILE1=$pkgdir/usr/share/applications/$pkgname.desktop \
    DESTDIR=$pkgdir install 
  rm $pkgdir/usr/share/applications/kornelix-myStuff.desktop 
}
