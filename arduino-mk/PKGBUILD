# Maintainer: Niels Martignène <niels.martignene@gmail.com>

pkgname=arduino-mk
pkgver=1.3.1
pkgrel=1
pkgdesc="A Makefile for Arduino Sketches"
arch=(any)
url="https://github.com/sudar/Arduino-Makefile"
license=('GPL')
depends=('arduino' 'make' 'perl' 'perl-device-serialport')
# makedepends=('help2man')
source=("https://github.com/sudar/Arduino-Makefile/archive/${pkgver}.tar.gz")
sha256sums=('ed7ac7b21ef10fa487f531fd09d8b7bcc81ad45a2a2a5571a794ff6cfb264749')

prepare() {
  cd "${srcdir}/Arduino-Makefile-${pkgver}"

  find -name ".gitignore" -delete
}

build() {
  cd "${srcdir}/Arduino-Makefile-${pkgver}"

  # FIXME: generates broken man page
  # help2man bin/ard-reset-arduino -n "Reset Arduino board" -s 1 -m "Arduino CLI Reset" --version-string=${pkgver} -N -o bin/ard-reset-arduino.1
}

package() {
  cd "${srcdir}/Arduino-Makefile-${pkgver}"

  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/share/arduino"
  mkdir -p "${pkgdir}/usr/share/doc/${pkgname}"
  # mkdir -p "${pkgdir}/usr/share/man/man1"

  install -m755 bin/ard-reset-arduino "${pkgdir}/usr/bin/"
  install -m644 *.mk "${pkgdir}/usr/share/arduino/"

  cp -r README.md examples "${pkgdir}/usr/share/doc/${pkgname}/"
  # install -m644 bin/ard-reset-arduino.1 "${pkgdir}/usr/share/man/man1/"
}

