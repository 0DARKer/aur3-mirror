# Maintainer: Korantin Auguste <contact@palkeo.com>
pkgname=faraday-git
pkgver=0
pkgrel=1
pkgdesc="Faraday introduces a new concept (IPE) Integrated Penetration-Test Environment a multiuser Penetration test IDE."
arch=(any)
url="http://www.faradaysec.com"
license=('GPL3')
depends=('python2-whoosh' 'pyqt3' 'python2-mockito' 'python2-couchdbkit' 'python2-flask' 'python2-restkit' 'python2-ipy' 'python2-requests' 'python2-tornado' 'python2-dateutil')
makedepends=()
source=('git://github.com/infobyte/faraday.git' 'faraday.sh')
noextract=()
md5sums=('SKIP' 'SKIP')

package() {
  cd "$srcdir/faraday"

  python2 -O -m compileall .
 
  mkdir -p "${pkgdir}/usr/share/faraday"
  mkdir -p "${pkgdir}/usr/bin"
  cp -r * "${pkgdir}/usr/share/faraday/"
  cp "$srcdir/faraday.sh" "${pkgdir}/usr/bin/faraday"
}
