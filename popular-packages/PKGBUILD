# Popular-Packages: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>

pkgname=popular-packages
filename=pop-pac
pkgver=0.3.0
pkgrel=1
pkgdesc="Lists popular packages not installed"
arch=("any")
url="http://piczasso.com/i/mq40f.jpeg"
license=("GPL3")
depends=("bash" "wget" "package-query")
optdepends=("pacman-cage: Better performance")
options=(!emptydirs)
source=(${filename}.sh)

package() {
	cd "${srcdir}"

	install -D -m755 ${filename}.sh "${pkgdir}"/usr/bin/${filename}.sh
}

sha1sums=('fec6bfab72a2b38c64b190e03a67547de2296d30')
