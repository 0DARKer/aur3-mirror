# Popular-Packages: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>

pkgname=popular-packages
filename=pop-pac.sh
pkgver=0.1.0
pkgrel=1
pkgdesc="Lists popular packages not installed"
arch=("any")
url="http://piczasso.com/i/p8bgl.jpeg"
license=("GPL3")
depends=("bash" "wget" "pacman")
optdepends=("pacman-cage: Better performance")
options=(!emptydirs)
source=(${filename})

package() {
	cd "${srcdir}"

	install -D -m 755 ${filename} "${pkgdir}"/usr/bin/${filename}
}

sha1sums=('809673420c9b74ae9cf45bfd5a6eba37d205a21c')
