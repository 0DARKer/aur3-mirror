pkgname=popular-packages
filename=pop-pac
pkgver=0.3.1
pkgrel=1
pkgdesc="Lists popular packages not installed"
arch=("any")
url="http://i.imgur.com/GxV0P.jpg"
license=("GPL3")
depends=("bash" "wget" "package-query")
optdepends=("pacman-cage: Better performance")
options=(!emptydirs)
source=(${filename}.sh)

package() {
	cd "${srcdir}"

	install -D -m755 ${filename}.sh "${pkgdir}"/usr/bin/${filename}.sh
}

sha1sums=('9f11329be5076adebfe582ba619203c42838c09c')
