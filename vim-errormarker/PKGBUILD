# Maintainer: Zhang Li <msfxzi at sina.com>
pkgname=vim-errormarker
pkgver=0.1.12
pkgrel=1
pkgdesc="Highlights and sets error markers for lines with compile errors"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=1861"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(errormarker.vim::http://www.vim.org/scripts/download_script.php?src_id=13041)
md5sums=('05920ac5ce60b0a8cf8bf4b871bf7560')

build() {
    install -Dm755 ${srcdir}/errormarker.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/errormarker.vim || return 1
}
