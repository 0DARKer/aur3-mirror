# Contributor: Bob Day <bobday_ats@hotmail.com>
pkgname=pidgin-screenshot
pkgver=0.7
_subver=0
pkgrel=1
pkgdesc="A plugin for Pidgin to capture a rectangular area of your screen, then send it as a file or directly as an image."
arch=('i686' 'x86_64')
url="http://code.google.com/p/pidgin-sendscreenshot/"
license=('GPL')
depends=('pidgin' 'intltool')
source=(http://pidgin-sendscreenshot.googlecode.com/files/pidgin-sendscreenshot-$pkgver.tar.bz2)
md5sums=('277ad8b0ba58e9898cb911c32516c538')

build() {
  cd "$srcdir/pidgin-sendscreenshot-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

