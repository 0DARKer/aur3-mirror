pkgname=indicator-cpufreq-bzr
pkgbranch=trunk
pkgver=9
pkgrel=1
pkgdesc="CPU frequency indicator."
arch=('i686' 'x86_64')
url="https://launchpad.net/indicator-cpufreq"
license=('GPL')
depends=('ayatana-indicators-baselibs' 'cpufrequtils')
source=()
md5sums=()

_bzrbranch=lp:indicator-cpufreq
_bzrmod=indicator-cpufreq

build() {
   cd ${srcdir}

  msg "Connecting to the server...."

  if [ ! -d ./${_bzrmod} ]; then
    bzr co ${_bzrbranch} ${_bzrmod}
  else
    bzr up ${_bzrmod}
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  cd ${_bzrmod}
  mkdir ${pkgdir}/usr
  python2 ./setup.py build
  python2 ./setup.py install --prefix=${pkgdir}/usr
}
