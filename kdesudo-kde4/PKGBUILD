# Contributor: Alois Nespor <alois.nespor@gmail.com>

pkgname=kdesudo-kde4
pkgver=3.4.2.4
pkgrel=1
pkgdesc="A sudo frontend for KDE originaly developed by Robert Gruber, and now maintained by Kubuntu developers."
arch=('i686' 'x86_64')
url="https://launchpad.net/kdesudo"
license=('GPL')
depends=('kdebase-runtime')
md5sums=('9cae3b6f12edd6595a4d0554772e926e')
source=(http://launchpad.net/kdesudo/3.x/${pkgver}/+download/kdesudo-${pkgver}.tar.gz)

build() {
  cd $srcdir/kdesudo-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/usr/
  make || return 1
  make DESTDIR=$pkgdir install
}
