pkgname=kdesudo-kde4
pkgver=3.1
pkgrel=2
pkgdesc="KdeSudo is a sudo frontend for KDE originaly developed by Robert Gruber, and now maintained by Kubuntu developers."
arch=('i686' 'x86_64')
url="https://launchpad.net/kdesudo"
license=('GPL')
depends=('kdelibs')
md5sums=('00a650bb253706620befdd997fb608fe')
source=(http://launchpad.net/kdesudo/3.x/3.1/+download/kdesudo-${pkgver}.tar.gz)


build() {
  cd $startdir/src/kdesudo-$pkgver
  cmake -DCMAKE_INSTALL_PREFIX=/opt/kdemod/
  make || return 1
  make DESTDIR=$startdir/pkg install
}
