# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>
# Contributor: Alexey D. <lq07829icatm at rambler.ru>

pkgname=plasma-workspace-git
pkgver=r1338.fd17db1
pkgrel=1
pkgdesc='KDE Plasma Workspace'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kde/kde-workspace'
license=('LGPL')
depends=('kded-git' 'libksysguard-git' 'kjsembed-git' 'knotifyconfig-git' 'ktexteditor-git' 'kde-cli-tools-git' 'khelpcenter-git' 'kio-extras-git' 
'baloo-frameworks-git' 'milou-frameworks-git' 'libkscreen-frameworks-git' 
'breeze-git' 'kwin-git' 'qimageblitz-svn' 'gpsd' 'libqalculate') # prison-git akonadi-qt5 kdepimlibs-frameworks-git
makedepends=('extra-cmake-modules' 'git' 'kdoctools' 'boost')
conflicts=('plasma-workspace' 'kde-workspace<0')
provides=('plasma-workspace')
options=()
source=('git://anongit.kde.org/plasma-workspace.git'
        'kf5-plasma.desktop'
        '10-kf5')
md5sums=('SKIP'
         '9e8f350ff3aee562848b104b129a6669'
         '789cbc2822ce2c268b51b96a5110411c')

pkgver() {
  cd plasma-workspace
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../plasma-workspace \
    -DCMAKE_INSTALL_PREFIX=/opt/kf5 \
    -DCMAKE_BUILD_TYPE=Release \
    -DLIB_INSTALL_DIR=lib \
    -DQT_PLUGIN_INSTALL_DIR=lib/qt/plugins \
    -DQML_INSTALL_DIR=lib/qt/qml
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install

  sed 's:qtpaths:qtpaths-qt5:' -i "$pkgdir/opt/kf5/bin/startkde"
  sed 's:/opt/kf5/lib/libexec/kf5/start_kdeinit_wrapper:/usr/lib/libexec/kf5/start_kdeinit_wrapper:' -i "$pkgdir/opt/kf5/bin/startkde"

  install -dm755 "${pkgdir}/usr/share/apps/kdm/sessions/"
  install -dm755 "${pkgdir}/usr/share/xsessions/"
  install -m644 "${srcdir}/kf5-plasma.desktop" "${pkgdir}/usr/share/xsessions/"
  ln -sr "${pkgdir}/usr/share/xsessions/kf5-plasma.desktop" -t "${pkgdir}/usr/share/apps/kdm/sessions/"
  
  install -Dm755 "${srcdir}/10-kf5" "${pkgdir}/etc/X11/xinit/xinitrc.d/10-kf5"
}
