#Contributor: Max Gonzih <iam@gonzih.org>
pkgname=plexydesk-git
pkgver=20110906
pkgrel=1
pkgdesc="Qt Desktop customizer"
url="http://plexyplanet.org"
license="LGPL3"
arch=('i686' 'amd64')
#depends=('')
makedepends=('git' 'cmake')
provides=('plexydesk')
conflicts=('plexydesk' 'plexydesk-svn')
source=()
md5sums=()

_github_repo_url='git://github.com/siraj/plexydesk.git'

build() {
    cd $startdir/src
    [ -d ./plexydesk ] && rm -fr ./plexydesk
    git clone $_github_repo_url plexydesk
    cd ./plexydesk
    cmake -DCMAKE_INSTALL_PREFIX=$startdir/pkg/ -DCMAKE_BUILD_TYPE=Release . || return 1
    make || return 1
    make install
}
