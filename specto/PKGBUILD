# Contributor: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=specto
pkgver=0.3.1
pkgrel=2
pkgdesc="A program that will watch configurable events and then trigger notifications"
url="http://specto.sourceforge.net/"
arch=('any')
license=('GPL')
depends=('gnome-icon-theme' 'gnome-keyring' 'librsvg' 'gnome-python-extras' \
  'pygtk' 'python-numpy' 'python-notify' 'dbus-python' 'python-lxml' 'xdg-utils' 'python2')
optdepends=('bzr: for the bazaar watch plugin')
provides=('specto')
conflicts=('specto-bzr')
install=$pkgname.install
source=(http://specto.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('1a5ddb1dd7b4445886e07faa2cb365ed')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  python2 setup.py install --root="$pkgdir" || return 1
}
