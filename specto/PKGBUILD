# Maintainer: Nuno Araujo <nuno.araujo at russo79.com>
# Contributor: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=specto
pkgver=0.4
pkgrel=6
pkgdesc="A program that will watch configurable events and then trigger notifications"
url="http://specto.sourceforge.net/"
arch=('any')
license=('GPL')
depends=('dbus-python' 'python2-gconf' 'python-notify' 'pyxdg' 'python2-numpy' 'hicolor-icon-theme')
makedepends=('intltool')
optdepends=('bzr: watch Bazaar branches'
            'gstreamer0.10-python: play sound on events' 
            'python-gnomekeyring: store passwords in GNOME Keyring'
            'python-simplejson: watch tweets on Twitter'
            'libindicate-gtk2: Messages Indicator support')

install=$pkgname.install
source=(http://specto.googlecode.com/files/$pkgname-$pkgver.tar.gz 
        constants.py.in)

md5sums=('4e9200044b3d14ffd0884d56dac1e80e'
         '3f00e4fb19fbdaa37e18b7451ace462b')

build() {
  cp ${srcdir}/constants.py.in ${srcdir}/${pkgname}-${pkgver}/spectlib
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver} 
  python2 setup.py install --prefix=/usr --root=${pkgdir}
}
