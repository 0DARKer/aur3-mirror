# Maintainer: Nuno Araujo <nuno.araujo at russo79.com>
# Contributor: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=specto
pkgver=0.4
pkgrel=2
pkgdesc="A program that will watch configurable events and then trigger notifications"
url="http://specto.sourceforge.net/"
arch=('any')
license=('GPL')
depends=('gnome-icon-theme' 'librsvg' \
  'pygtk' 'python2-numpy' 'python-notify' 'dbus-python' 'python-lxml' 'xdg-utils' \
  'python2' 'python2-gconf' 'gstreamer0.10-python')
optdepends=('bzr: for the bazaar watch plugin'
            'gnome-keyring: for storing passwords in gnome-keyring'
            'gnome-python-extras'
            'gnome-python')
provides=('specto')
conflicts=('specto-bzr')
install=$pkgname.install
source=(http://specto.googlecode.com/files/$pkgname-$pkgver.tar.gz
        VERSION
        constants.py.in)

md5sums=('90d3e32079917a63e1dcc09bfa303b43'
         '25c4a0129cc5bea3766b3512992f1244'
         '3f00e4fb19fbdaa37e18b7451ace462b')

build() {
  cp ${srcdir}/VERSION ${srcdir}/${pkgname}-${pkgver}
  cp ${srcdir}/constants.py.in ${srcdir}/${pkgname}-${pkgver}/spectlib
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver} 
  python2 setup.py install --prefix=/usr --root=${pkgdir}
}
