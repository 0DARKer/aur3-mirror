pkgname=fsdetect
pkgver=2.1.5
pkgrel=3
pkgdesc="Program to detect filesystem on block device"
arch=('i686' 'x86_64')
url="http://www.filesystems.nm.ru/"
license=('GPL')
depends=(util-linux-ng)
source=("http://www.filesystems.nm.ru/my/fsdetect.tar.gz")
md5sums=('67bdd681c9dc2797fa290bc1676a1e27')

build() {
	cd $srcdir/$pkgname
	make || return 1	
	#mkdir -p $pkgdir/usr/sbin
	#cp $pkgname $pkgdir/usr/sbin || return 1
	install -m755 -D $srcdir/$pkgname/$pkgname $pkgdir/usr/sbin/$pkgname || return 1
	# license 	
	install -m644 -D src/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

