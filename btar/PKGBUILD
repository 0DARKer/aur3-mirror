# Maintainer: onny <onny@project-insanity.org>
# Contributor: onny <onny@project-insanity.org>

pkgname=btar
pkgver=0.9.1
pkgrel=1
pkgdesc="btar is a tar-compatible archiver with several extra features"
url=('http://freecode.com/projects/btar')
arch=('i686' 'x86_64')
license=('GPL3')
makedepends=('librsync')
source=("http://vicerveza.homeunix.net/~viric/soft/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('f386c2b621a27770268f7e8296cac4cf')
options=('!buildflags')
build () {
	cd $srcdir/$pkgname-$pkgver
	make
}
package() {
	cd $srcdir/$pkgname-$pkgver
	make PREFIX="$pkgdir" install || return 1
}
