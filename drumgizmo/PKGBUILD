# Maintainer: speps <speps at aur dot archlinux dot org>

pkgname=drumgizmo
pkgver=0.9.4
pkgrel=1
pkgdesc="A drum LV2 plugin and stand-alone application"
arch=('i686' 'x86_64')
url="http://www.drumgizmo.org/"
license=('GPL3')
groups=('lv2-plugins')
depends=('lv2' 'libsmf' 'libao' 'jack' 'qt4')
source=("${url}releases/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('dd0af5201cd960bd02c56f6ec842ac82')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr \
              --enable-static=no
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir/" install
}
