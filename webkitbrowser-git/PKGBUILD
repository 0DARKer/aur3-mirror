# Contributor: Håvar Nøvik  <havar.novik@gmail.com>

pkgname=webkitbrowser-git
pkgver=20090526
pkgrel=1
pkgdesc="an ultralight webkit based browser with vimperator like control"
arch=('i686' 'x86_64')
url="https://projects.ring0.de/webkitbrowser/"
license=('custom')
depends=('libwebkit') 
makedepends=('git')

_gitroot="git://projects.ring0.de/webkitbrowser.git"
_gitname="webkitbrowser"

build() {
    cd ${srcdir}

    msg "Connecting to GIT server..."

    if [ -d $_gitname ]; then
        cd $_gitname && git pull origin
        cd ..
        msg "The local files are updated."
    else
        git clone $_gitroot
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    cd $_gitname

    make || return 1
    
    mkdir -p ${startdir}/pkg/usr/bin

    install -m 755 webkitbrowser ${startdir}/pkg/usr/bin/webkitbrowser
}
