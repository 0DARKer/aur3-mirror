pkgname=getmediainfo-servicemenu-kde4
pkgver=0.4
pkgrel=2
pkgdesc="Simple service menu that show the mediainfo about the selected media."
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php?action=content&content=141946"
license=('GPL')
depends=('kdebase-workspace' 'mediainfo')
source=("http://kde-look.org/CONTENT/content-files/141946-MediaInfoKDE.desktop")
md5sums=('8a247ef6c99a362b528cd13c74fce8af')

build() {
  /bin/true
}

package() {
  install -Dm644 ${srcdir}/*-MediaInfoKDE.desktop ${pkgdir}/usr/share/kde4/services/ServiceMenus/getmediainfo.desktop
} 