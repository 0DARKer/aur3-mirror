# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=gdebugger
pkgver=5.8.0.11830
pkgrel=1
pkgdesc="An advanced OpenGL and OpenCL debugger, profiler and memory analyzer"
arch=('i686' 'x86_64')
url="http://www.gremedy.com/"
license=('custom')
depends=('mesa' 'gtk2')
optdepends=("libgl: OpenGL debugging" \
            "libcl: OpenCL debugging")
source=("http://files.gremedy.com/downloads/gDEBugger58-x86_64.tar.gz" \
         gDEBugger.sh)
md5sums=('71a06b9e8fc7c1666a848b3d4ab1064a'
         '4484ba47685f41d3ce465388e6c583bc')

if [ "$CARCH" = "i686" ]; then
  source[0]="http://files.gremedy.com/downloads/gDEBugger58-i386.tar.gz"
  md5sums[0]='23635f0ecb7f438a31587a56ac5b1c91'
fi

package() {
  install -d -m755 "$pkgdir/opt"
  cp -a gDEBugger58-x86_64  "$pkgdir/opt/gDEBugger"

  install -D -m755 "gDEBugger.sh" "$pkgdir/usr/bin/gDEBugger"
  install -D -m644 "gDEBugger58-x86_64/Legal/EndUserLicenseAgreement.htm" "$pkgdir/usr/share/licenses/$pkgname/EULA.htm"
}

# vim:set ts=2 sw=2 et:
