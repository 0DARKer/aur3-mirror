source=(
  http://xyne.archlinux.ca/projects/python3-aria2jsonrpc/src/python3-aria2jsonrpc-2013.11.24.5.tar.xz
  http://xyne.archlinux.ca/projects/python3-aria2jsonrpc/src/python3-aria2jsonrpc-2013.11.24.5.tar.xz.sig
)
sha512sums=(
  5fa266ee92a49f391175fb0619bad638ca4ea05edb42ac36766969f2b9494e9ab40ba849a7c42f33cb2d505507d839515beb26b3b1f00f2b3ba53bd6c6a5f524
  84710f73687ed81fc021d07d9178be6a95ba478d530f5287d1dca09b4e26481fb7c419d4215afd42e53d1ee8635af08803a954d8dbbb5a1e48ac9558f43578eb
