pkgname=binkplayer
pkgver=2.4m
pkgrel=1
pkgdesc="Bink Video Player"
url="http://www.radgametools.com/bnkmain.htm"
source=(http://www.radgametools.com/down/Bink/BinkLinuxPlayer.7z)
sha256sums=('c7176d6f0d4b21b02d8f34662ec36a4af580e4d7c4e8cef61f7da7a8a204ec94')
license=('custom')
arch=('i686' 'x86_64')
makedepends=('')


if [ "$CARCH" = "x86_64" ]; then
depends=('lib32-sdl_mixer' 'lib32-openal')
else
depends=('sdl_mixer' 'openal')
fi

package() {
  install -Dm755 "$srcdir/BinkPlayer" "$pkgdir/usr/bin/binkplayer"
}
