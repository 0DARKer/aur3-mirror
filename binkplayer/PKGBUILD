pkgname=binkplayer
pkgver=1.99w
pkgrel=1
pkgdesc="Bink Video Player"
url="http://www.radgametools.com"
source=(http://www.radgametools.com/down/Bink/BinkLinuxPlayer.7z)
md5sums=('f5a7ef192503c9ad56287d75be1049bf')
license=('custom')
arch=('i686' 'x86_64')
makedepends=('')


if [ "$CARCH" = "x86_64" ]; then
depends=('lib32-sdl_mixer' 'openal')
else
depends=('sdl_mixer' 'openal')
fi

build() {
  mkdir -p "${startdir}/pkg/usr/bin"
  cp "${startdir}/src/BinkPlayer" "${startdir}/pkg/usr/bin/binkplayer"
  chmod +x "${startdir}/pkg/usr/bin/binkplayer"
}
 
