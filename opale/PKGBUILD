# Maintainer: TDY <tdy@gmx.com>

pkgname=opale
pkgver=1.0
pkgrel=1
pkgdesc="A personal bank account manager"
arch=('i686' 'x86_64')
url="http://freehackers.org/Opale/"
license=('GPL')
depends=('qt' 'hicolor-icon-theme' 'shared-mime-info')
makedepends=('cmake' 'doxygen')
install=opale.install
source=(http://labs.freehackers.org/attachments/download/270/Opale-$pkgver.tar.bz2)
md5sums=('4de8e6dc48b267aed19eb5d7039138ed')

build() {
  cd "$srcdir/Opale-$pkgver"
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DENABLE_KDE=OFF ..
  make || return 1
}

package() {
  cd "$srcdir/Opale-$pkgver/build"
  make DESTDIR="$pkgdir" install
}
