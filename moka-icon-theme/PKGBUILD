# Maintainer: Diego <cdprincipe@at@gmail@dot@com>

pkgname=moka-icon-theme
pkgver=2.0
pkgrel=1
pkgdesc="Moka is meant to be a comprehensive and well-designed icon set."
arch=('any')
url="http://www.snwh.org/moka-icon-theme/"
license=('GPL3') 
depends=(
    'faba-icon-theme'
    )

source=('https://db.tt/IPgTb8c4')
md5sums=('c91d0b7d73c5798c4a3be36d82b173ff')
package() {
  # Extract
  cd $srcdir

  
  # create theme dirs
  install -d -m 755 "$pkgdir"/usr/share/icons/Moka

  # install theme
  cd $srcdir/Moka
  cp -r . "$pkgdir"/usr/share/icons/Moka/
  find "${pkgdir}"/usr/share/icons -type d -exec chmod 755 '{}' \;
  find "${pkgdir}"/usr/share/icons -type f -exec chmod 644 '{}' \;
}
