# Author : wxg

pkgname=python2-google-api-python-client-hg
pkgver=1.2
pkgrel=1
pkgdesc="Google API Client for Python"
url="http://code.google.com/p/google-api-python-client/"
arch=('any')
license=('APACHE')
depends=('python2' 'python2-httplib2' 'python2-gflags' 'python-simplejson')
makedepends=('python2-distribute')
conflicts=('google-api-python-client')
source=("google-api-python-client::hg+https://code.google.com/p/google-api-python-client/")

pkgver() {
  cd google-api-python-client/
  hg identify -ni | awk 'BEGIN{OFS=".";} {print $2,$1}'
}

package() {
  cd google-api-python-client/
  python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

md5sums=('SKIP')