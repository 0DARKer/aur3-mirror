pkgname=lib32-libsoup
pkgname32=${pkgname/lib32-/}
pkgver=2.30.2
pkgrel=1
_pkgrel32=1
pkgdesc="GNOME HTTP Library - base library"
arch=('x86_64')
depends=()
url=(http://www.gnome.org)
groups=lib32
license=('GPL')
source=(http://mirrors.kernel.org/archlinux/extra/os/i686/$pkgname32-$pkgver-$pkgrel-i686.pkg.tar.xz)
md5sums=('869deb9862452391a84a768c5f9aa9cf')

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/lib/
  cp -R $startdir/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib/
} 
