pkgname=howm-git
pkgver=e293c0f
pkgrel=2
pkgdesc='A lightweight, tiling X11 window manager that mimics vi by offering operators, motions and modes.'
arch=('i686' 'x86_64')
url='https://github.com/HarveyHunt/howm'
license=('GPL')
depends=('xcb-util-keysyms' 'xcb-util-wm')
makedepends=('git')
options=('docs' '!strip' 'debug')
source=('git+https://github.com/HarveyHunt/howm.git#branch=develop'
	'config.h')
sha1sums=('SKIP'
          'bf5472c565286918ae3849712e2ecb40463fa5ee')

_gitname='howm'

pkgver() {
  cd "$srcdir/$_gitname"
  git rev-parse --short HEAD
}

build() {
  cd "$_gitname"
  cp "$srcdir/config.h" config.h
  make
}

package() {
  cd "$_gitname"
  mkdir -p "$pkgdir/usr/bin"
  make INSTALL_PREFIX=usr DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:

