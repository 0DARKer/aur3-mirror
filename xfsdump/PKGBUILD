pkgname=xfsdump
pkgver=3.1.2
pkgrel=1
pkgdesc="Additional XFS filesystem utilities"
arch=(i686 x86_64)
license=('LGPL')
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs>=3.1.0' 'attr>=2.4.43' 'acl>=2.2.47' 'dmapi>=2.2.10')
options=('!makeflags')
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/${pkgname}-${pkgver}.tar.gz)
options=(!emptydirs !libtool)

md5sums=('b9904578f00da99922035e0dc04ace2f')                                                                                                                                              
sha1sums=('a088f0be221d36e9032622b8606762f27cb41d50')                                                                                                                                     
sha256sums=('dc3065b9aeb00de078b8a54ae3f46c71d43d4c4ad4c69ec77343182e881fa4d8')                                                                                                           
sha512sums=('23a295ec17002284852f83583a9a66600f2c94742f9c0372db6193e38a53142f71ab3c46fb6d48f0caa9a2737712e217c9adf798edfbd172403d6c372fc63b02')

build() {
  cd $srcdir/${pkgname}-${pkgver}
  make || return 1
  make DIST_ROOT=$pkgdir install
}
