pkgname=xfsdump
pkgver=3.0.5
pkgrel=1
pkgdesc="Additional XFS filesystem utilities"
arch=(i686 x86_64)
license=('LGPL')
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs>=3.1.0' 'attr>=2.4.43' 'acl>=2.2.47' 'dmapi>=2.2.10')
options=('!makeflags')
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/${pkgname}-${pkgver}.tar.gz)
options=(!emptydirs !libtool)

md5sums=('878795f3cf8bcd10eaa3da9e0a612fa7')
sha256sums=('f3a86b37e268779c940996a7aba93ed1f04ad942cbc1b8d75aae1e447aa762ad')
sha512sums=('93e808bb14923321edd7b065ab22d541a2150a020a69dabf04576b0577ba41fe128b9b433858562b09c9f34f968e8b96573cfbcb368971a93d428f379ce8de9a')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DIST_ROOT=$pkgdir install
}
