pkgname=xfsdump
pkgver=3.0.6
pkgrel=1
pkgdesc="Additional XFS filesystem utilities"
arch=(i686 x86_64)
license=('LGPL')
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs>=3.1.0' 'attr>=2.4.43' 'acl>=2.2.47' 'dmapi>=2.2.10')
options=('!makeflags')
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/${pkgname}-${pkgver}.tar.gz)
options=(!emptydirs !libtool)

md5sums=('b307d91d477e2c3eb853fe1e828ad427')
sha256sums=('d6aa8040f7fe7c4dcb41190b7530c36177b084134e92a2c01e309ff4c18a1829')
sha512sums=('2dbb255575f83e144e54d024ad46e8246fa24b20aad2c67052b66a9879ddda3b49546ec5daaa8eb9cf44f5293a313814a131faf49f6a1e76aca435da3da3d5bf')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DIST_ROOT=$pkgdir install
}
