pkgname=xfsdump
pkgver=3.1.1
pkgrel=1
pkgdesc="Additional XFS filesystem utilities"
arch=(i686 x86_64)
license=('LGPL')
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs>=3.1.0' 'attr>=2.4.43' 'acl>=2.2.47' 'dmapi>=2.2.10')
options=('!makeflags')
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/${pkgname}-${pkgver}.tar.gz)
options=(!emptydirs !libtool)

md5sums=('618db3ae49c11d725f166f3b6cd548a6')
sha1sums=('aeaa745a1b21f41cd5e6af2657c4fca20cf2d94f')
sha256sums=('97650987edde992ca557e896232a2857f9d5f0d677f1af748cf49518a72b7096')
sha512sums=('525d4af18308bc88123da9050a4a2d61e4becc228133619ee238a859cc29e5b305e03ed38df08a085b0f19d396bb68a2df33e323bb2b7811d44bf8aa75095f01')

build() {
  cd $srcdir
  make || return 1
  make DIST_ROOT=$pkgdir install
}
