# $Id$
# Maintainer: tobias <tobias@archlinux.org>
# Contributor: orux

pkgname=old-scribus
pkgver=1.2.5
pkgrel=2
pkgdesc="A desktop publishing program"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.scribus.net"
install=${pkgname}.install
depends=('libcups>=1.2.10' 'lcms>=1.16' 'qt3>=3.3.8' 'ghostscript>=8.15.4' \
         'libart-lgpl>=2.3.19' 'python>=2.5' 'libxml2>=2.6.27' 'cairo' \
			'desktop-file-utils')
makedepends=('')
options=(!libtool force !makeflags)
source=('http://surfnet.dl.sourceforge.net/sourceforge/scribus/scribus-1.2.5.tar.bz2' 'scribusicon.png' 'old-scribus.desktop')
md5sums=('e005b1d616b8668bb23f0a130465385a' '02b4b0bdcb31a4c2db8517503d11e063' '1636cec08a7939992a5aeab2ec6c334c')

build() {
  # Source the QT profile
  source /etc/profile.d/qt3.sh

  cd ${startdir}/src/scribus-1.2.5

  ./configure --program-prefix=old- --prefix=/opt/scribus-1.2.5
  make || return 1
  make DESTDIR=$startdir/pkg install

  install -d ${startdir}/pkg/usr/bin
  ln -sf /opt/scribus-1.2.5/bin/old-scribus ${startdir}/pkg/usr/bin/old-scribus

  install -Dm644 $startdir/scribusicon.png ${startdir}/pkg/usr/share/pixmaps/scribusicon.png

  install -Dm644 $startdir/old-scribus.desktop ${startdir}/pkg/usr/share/applications/old-scribus.desktop
}
