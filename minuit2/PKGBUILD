# Contributor: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=minuit2
pkgver=5.22.00
pkgrel=1
pkgdesc="A physics analysis tool for function minimization"
arch=('i686' 'x86_64')
url="http://lcgapp.cern.ch/project/cls/work-packages/mathlibs/minuit/"
license=('LGPL')
depends=('libstdc++5')
options=('!libtool')
source=(http://www.cern.ch/mathlibs/sw/${pkgver//./_}/${pkgname/m/M}/${pkgname/m/M}-$pkgver.tar.gz)
md5sums=('2cbc34907bfe202c7a779e9713355846')

build() {
  cd $srcdir/${pkgname/m/M}-$pkgver
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
