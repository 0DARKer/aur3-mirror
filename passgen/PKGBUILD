# Maintainer: David Phillips <dbphillipsnz at _remove this part_ gmail dot com>
pkgname=passgen
pkgver=1.3
pkgrel=1
pkgdesc="Generates strong passwords by selecting random characters from a default or user-specified pool"
arch=('i686')
url="http://batchbin.ueuo.com/"
license=('GPL')
source=(http://batchbin.ueuo.com/passgen/$pkgname-$pkgver.tar.gz)
md5sums=('6462a093d23cd12d519a7f62777c8f7c')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"	
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/share/man/man1/
	cp passgen ${pkgdir}/usr/bin/
	cp passgen.1.gz ${pkgdir}/usr/share/man/man1/
}
