# Maintainer: David Phillips <dbphillipsnz at _remove this part if you want_ gmail dot com>
pkgname=passgen
pkgver=1.4
pkgrel=2
pkgdesc="Generates strong passwords by selecting random characters from a default or user-specified pool"
arch=('i686' 'x86_64')
url="http://batchbin.ueuo.com/projects/passgen"
license=('GPL')
source=("https://github.com/phillid/$pkgname/archive/master.zip")
md5sums=('10727febc3ef445331c72749353294a9')

build() {
	make clean all --directory="$srcdir/$pkgname-master"
}

package() {
	cd $srcdir/$pkgname-master
	install -m 755 -D passgen $pkgdir/usr/bin/passgen
	install -m 644 -D passgen.1.gz $pkgdir/usr/share/man/man1/passgen.1.gz
	ln -s passgen $pkgdir/usr/bin/passgen-fast
}
