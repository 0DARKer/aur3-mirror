pkgname=passgen
pkgver=1.4
pkgrel=4
pkgdesc="Generates strong passwords by selecting random characters from a default or user-specified pool"
arch=('i686' 'x86_64')
url="https://github.com/phillid/passgen/"
license=('GPL')
source=("http://phillid.tk/source/${pkgname}-${pkgver}-${pkgrel}.tar.gz")
sha512sums=('93f5665dc3afa0650d56b2df6ba1a31a0299678c51df67c8a2875b9c87f9cafb40be5a3253f8c43bc13ecb5f8b0aaf72d47e6967c2ba7315ecbe4446df7fa2a8')

build() {
	make clean all --directory="${srcdir}/${pkgname}-master"
}

package() {
	make install DESTDIR=${pkgdir} --directory="${srcdir}/$pkgname-master"
}
