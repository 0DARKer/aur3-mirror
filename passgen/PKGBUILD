# Maintainer: David Phillips <dbphillipsnz at gmail dot com>
pkgname=passgen
pkgver=1.0
pkgrel=1
pkgdesc="Generates passwords by selecting random characters from a default or user-specified pool"
arch=('i686' 'x86_64')
url="http://batchbin.ueuo.com/"
license=('GPL')
source=(http://batchbin.ueuo.com/passgen/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('1cce93e6c8baf5f794f988f3be58511f')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"	
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/share/man/man1/
	cp passgen ${pkgdir}/usr/bin/
	cp passgen.1.gz ${pkgdir}/usr/share/man/man1/
}
