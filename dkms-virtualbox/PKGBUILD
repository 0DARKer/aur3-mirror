# Contributor: Troels Liebe Bentsen <tlb@rapanden.dk>
_modname=vboxdrv
pkgname=dkms-virtualbox
pkgver=1.5.0
pkgrel=1
pkgdesc="Kernel modules for VirtualBox (vboxdrv)"
arch=(i686 x86_64)
url="http://www.virtualbox.org"
license=("GPL")
depends=('dkms')
replace=('virtualbox-modules')
conflicts=('virtualbox-modules')
provides=('virtualbox-modules' 'virtualbox-ose-additions-modules')
install=virtualbox.install
source=(http://www.virtualbox.org/download/$pkgver/vbox-kernel-module-src-$pkgver.tar.gz
    dkms.conf)

md5sums=('9f7ee9e9a4bebda310f3af6f8eeb3666'
         'ea235c59a41f2051298e71f6b4e3fc34')

build() {
  mkdir -p $startdir/pkg/usr/src/
  cp -a vboxdrv $startdir/pkg/usr/src/$_modname-$pkgver-$pkgrel
  sed -i -e "s/PACKAGE_VERSION=\".*\"/PACKAGE_VERSION=\"${pkgver}-${pkgrel}\"/" $startdir/dkms.conf
  cp dkms.conf $startdir/pkg/usr/src/$_modname-$pkgver-$pkgrel/
}
