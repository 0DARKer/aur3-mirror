# arg 1:  the new package version
post_install()
{
  /usr/sbin/dkms-arch install vboxdrv $1
  /bin/true
}

# arg 1:  the new package version
# arg 2:  the old package version
pre_upgrade()
{
  /usr/sbin/dkms-arch remove vboxdrv $2
  /bin/true
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade()
{
  /usr/sbin/dkms-arch install vboxdrv $1
  /bin/true
}

# arg 1:  the old package version
pre_remove()
{
  /usr/sbin/dkms-arch remove vboxdrv $1
  /bin/true
}

