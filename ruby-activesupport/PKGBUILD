# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-activesupport
gemname=activesupport
pkgver=3.0.9
pkgrel=1
pkgdesc="Utility classes and extension to the standard library that were required by Rails, but found of general use."
arch=(any)
url="http://www.rubyonrails.org/"
license=('MIT')
depends=('ruby' 'ruby-i18n')
source=(http://rubygems.org/downloads/${gemname}-${pkgver}.gem)
noextract=(${gemname}-${pkgver}.gem)
md5sums=('d24508b3985d4226d4ca1c88156aced9')

build() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${gemname}-${pkgver}.gem
}
