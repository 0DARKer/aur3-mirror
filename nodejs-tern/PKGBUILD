pkgname=nodejs-tern
pkgver=0.5.0
pkgrel=1
pkgdesc="A JavaScript code analyzer for deep, cross-editor language support"
arch=('any')
url='http://ternjs.net/'
license=('MIT')
depends=('nodejs')

package() {
  npm install -g --user root --prefix "$pkgdir/usr" tern@$pkgver
}
