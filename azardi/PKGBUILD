# Maintainer: Roman Beslik <rabeslik@gmail.com>
pkgname=azardi
pkgver=19.0
pkgrel=1
arch=("x86_64" "i686")
url="http://azardi.infogridpacific.com/"
makedepends=("deb2targz")
pkgdesc="The AZARDI book reader by Infogrid Pacific Pte Ltd."
if [ "$CARCH" = "x86_64" ]; then
	_arch_file_name=amd64
	sha512sums=(42acad82a9e8f9d369a586e2799a014dd1a00bb65f95bb7e1b4aeacacb46830fff3175076fe25a09fff1af089f3e6cb5bc91795616d681dc64db906f9e53a187)
fi
if [ "$CARCH" = "i686" ]; then
	_arch_file_name=i386
	sha512sums=(bfc83765440878b50827cdae9196405be158a006b3a9c1a91775dec49f56123ace8247c6d1c974269d08b0887d555a1b78dd3eab6284ed24987d9e17c578721f)
fi
_deb_file_name=AZARDI_${pkgver}_20130320_${_arch_file_name}
source=(https://azardi-download.s3.amazonaws.com/${_deb_file_name}.deb)
license=("custom:azardi")
install=_.install
build() {
	deb2targz $srcdir/${_deb_file_name}.deb
}
package() {
	tar -xzvf $srcdir/${_deb_file_name}.tar.gz -C $pkgdir
}
