# Contributor: vn158 <vn158 at seznam dot cz>
pkgname=mailsend
pkgver=1.16
pkgrel=1
pkgdesc="Simple program to send mail via SMTP protocol with SSL, STARTTLS and Authentication support"
arch=(i686 x86_64)
url="http://www.muquit.com/muquit/software/mailsend/mailsend.html"
license=('GPL')
depends=(openssl)
makedepends=()
source=(https://mailsend.googlecode.com/files/mailsend${pkgver}.tar.gz)
md5sums=('23a96277dc9c2184c37761102c7c792e')
sha1sums=('6098dcf27e516f068b160d079f3a484d9a009e82')
noextract=()
options=()

build() {
  cd "$startdir"/src/"$pkgname""$pkgver"
  ./configure --with-openssl=/usr
  make
}

package() {
  cd "$startdir"

  install -d -m755 pkg/usr/share/$pkgname
  install -m644 src/"$pkgname""$pkgver"/{NOTES,README,TODO,ChangeLog} pkg/usr/share/$pkgname

  install -d -m755 pkg/usr/bin
  install -m755 src/"$pkgname""$pkgver"/$pkgname pkg/usr/bin
}
