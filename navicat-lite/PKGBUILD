# Maintainer: Sid Karunaratne <sakaru at gmail dot com>
# Contributor: Mathias Rohnstock <linksoft@gmx.de>

pkgname=navicat-lite
_pkgname=navicat
pkgver=9.1.11
pkgrel=3
pkgdesc="a fast, reliable and affordable Database Administration tool purpose-built for simplifying database management and reducing administration costs"
url="http://www.navicat.com"
license=('LGPL2' 'custom')
arch=('any')
depends=('alsa-lib' 'desktop-file-utils' 'fontconfig' 'libxcursor' 'libxdamage' 'libxi' 'libxrandr' 'libxxf86dga' 'mesa')
source=(http://download2.navicat.com/download/${_pkgname}091_lite_en.tar.gz
        navicat.desktop
        navicat)
md5sums=('da9f1196127ffa521950f01a7a200497'
         '0a40410d7be7d9e324002c368eafd0b3'
         'a7f10a4d9c2c3901829c35c5bf9aae97')

build() {
  mkdir -p ${pkgdir}/opt/navicat
  mkdir -p ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}/usr/share/applications
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}/ 
  cp -R ${srcdir}/${_pkgname}091_lite_en/* ${pkgdir}/opt/navicat/
  cp ${srcdir}/navicat ${pkgdir}/usr/bin/
  cp ${srcdir}/${_pkgname}091_lite_en/Navicat/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  chmod +x ${pkgdir}/usr/bin/navicat
  cp ${srcdir}/navicat.desktop ${pkgdir}/usr/share/applications/
}
