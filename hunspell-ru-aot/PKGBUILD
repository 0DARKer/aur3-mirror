# $Id$

pkgname=hunspell-ru-aot
pkgver=0.1.1
pkgrel=2
pkgdesc="Russian hunspell dictionary"
provides=('hunspell-ru')
conflicts=('hunspell-ru')
replaces=('hunspell-ru')
arch=(any)
url="http://forumooo.ru/index.php/topic,106.0.html"
license=('LGPL')
optdepends=('hunspell: the spell checking libraries and apps')
source=(http://myooo.ru/usercontent/extentions/dict_ru_RU-AOT-0.1.1.oxt)
md5sums=('f6569fc1ab18d38075edf5691dc079f4')

build() {
  /bin/true
}

package() {
  cd "$srcdir"
  install -dm755 ${pkgdir}/usr/share/hunspell
  install -m 644 russian-aot.dic $pkgdir/usr/share/hunspell/ru_RU_aot.dic
  install -m 644 russian-aot.aff $pkgdir/usr/share/hunspell/ru_RU_aot.aff

  # the symlinks
  install -dm755 ${pkgdir}/usr/share/myspell/dicts
  pushd $pkgdir/usr/share/myspell/dicts
    for file in $pkgdir/usr/share/hunspell/*; do
      ln -sv /usr/share/hunspell/$(basename $file) .
    done
  popd
  
  # docs
  install -dm755 ${pkgdir}/usr/share/doc/$pkgname
  install -m 644 russian.info $pkgdir/usr/share/doc/$pkgname
  install -m 644 lgpl.txt $pkgdir/usr/share/doc/$pkgname
}

