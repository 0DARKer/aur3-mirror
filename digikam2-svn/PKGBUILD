# Maintainer: Dany Martineau <dany.luc.martineau at gmail.com>

pkgname=digikam2-svn
pkgver=1179065
pkgrel=1
pkgdesc="Digital photo management application for KDE. Svn version (version 2)"
arch=('i686' 'x86_64')
url="http://www.digikam.org/"
license=('GPL')
depends=('kdepimlibs' 'lensfun' 'liblqr' 'kipi-plugins2-svn' 'libkmap-svn')
makedepends=('subversion' 'cmake' 'automoc4' 'pkgconfig' 'doxygen')
conflicts=('kdemod-extragear-digikam' 'digikam' 'digikam-svn')
provides=('digikam')
install=('digikam-svn.install')
_svntrunk=svn://anonsvn.kde.org/home/kde/branches/extragear/graphics/digikam/
_svnmod=digikam-svn

build() {
  cd ${srcdir}

  if [ -d ${_svnmod}/.svn ]; then
    (cd ${_svnmod} && svn revert -R .)
    (cd ${_svnmod} && svn -r ${pkgver} up)
  else
    svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cd ${srcdir}/${_svnmod}

   cmake -DCMAKE_INSTALL_PREFIX=/usr \
     -DENABLE_MARBLEWIDGET=yes \
     -DWITH_MarbleWidget=yes \
     -DCMAKE_SKIP_RPATH=ON

   make all
  make DESTDIR=${pkgdir} install
}


