pkgname=quiterss-hg
pkgver=2751.ec75841c2f78
pkgrel=1
pkgdesc="QuiteRSS is fast and light rss ,feed reader written in C++/Qt4 - Git checkout"
arch=('i686' 'x86_64')
url="http://code.google.com/p/quite-rss/"
license=('GPL')
depends=('qtwebkit')
makedepends=('cmake' 'gettext' 'automoc4' 'mercurial')
source=("quiterss.install")
sha512sums=('418a36dc447e78a82504821e0f0c00a4cf969d93d2d8285478fcbb79c92674051f1aba89399dbcc21e673897384203f568439e741453a7c21003eb61c99a1c24')
install=quiterss.install
provides=('quiterss')
conflicts=('quiterss')

pkgver() {
  cd ${srcdir}/${_hgrepo} 2> /dev/null
  echo $(hg identify -n).$(hg identify -i)
}

_hgroot="https://code.google.com/p/quite-rss/"
_hgrepo="quiterss"

build() {
  cd "${srcdir}"
  msg "Connecting to Mercurial server...."

  if [[ -d "${_hgrepo}" ]]; then
    cd "${_hgrepo}"
    hg pull -u
    msg "The local files are updated."
  else
    hg clone "${_hgroot}" "${_hgrepo}"
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting build..."

  rm -rf "${srcdir}/${_hgrepo}-build"
  cp -r "${srcdir}/${_hgrepo}" "${srcdir}/${_hgrepo}-build"
  cd "${srcdir}/${_hgrepo}-build"

  qmake-qt4 QuiteRSS.pro PREFIX=/usr \
  "CONFIG+=LINUX_INTEGRATED" \
  "INSTALL_ROOT_PATH=${pkgdir}"

  make 
}

package() {
  cd "${srcdir}/${_hgrepo}-build"
  make INSTALL_ROOT="${pkgdir}" install

  install -Dm644 quiterss.desktop "${pkgdir}/usr/share/applications/"
}
