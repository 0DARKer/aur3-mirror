# Contributor: codestation <codestation404@gmail.com>

pkgname=vitamtp-git
pkgver=20130501
pkgrel=2
pkgdesc="Library to interact with Vita's USB MTP protocol"
arch=("i686" "x86_64")
url="https://github.com/yifanlu/VitaMTP"
license=('GPL')
depends=('libusb' 'libxml2')
options=('!libtool')

source=(vitamtp.patch
        80-psvita.rules)

md5sums=('0b9ef452759dd728c0e2ef53f081d33b'
         '27bb9f540735e06bcd7a1b44bf9c5632')

_gitroot="git://github.com/yifanlu/VitaMTP.git"
_gitname="vitamtp"

build() {
  cd "${srcdir}"
  msg "Connecting to Git server...."

  if [ -d $_gitname ]; then
    cd $_gitname && git pull origin
  else
    git clone --recursive $_gitroot $_gitname
  fi

  msg "Git checkout done or server timeout"
  msg "Starting make..."

  rm -rf "${srcdir}/${_gitname}-build"
  rm -rf "${srcdir}/libmtp-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}/libmtp" "${srcdir}/libmtp-build"

  cd "${srcdir}/libmtp-build"
  sed -i 's/AM_CONFIG_HEADER/AC_CONFIG_HEADERS/g' configure.ac
  yes | ./autogen.sh
  ./configure  LDFLAGS="-static" CFLAGS="-fPIC" --prefix="${srcdir}/libmtp-build/out" --with-udev="${srcdir}/libmtp-build/out"
  make
  msg "Creating temporal installation of custom libmtp"
  make install

  cd "${srcdir}/${_gitname}-build"
  patch -p1 < ../vitamtp.patch || return 1
  ./autogen.sh
  PKG_CONFIG_PATH="${srcdir}/libmtp-build" ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}" install
  install -Dm644 ../80-psvita.rules "${pkgdir}/usr/lib/udev/rules.d/80-psvita.rules"
}
