# Contributor: Libernux <dutchman55@gmx.com>
pkgname="brother-hl3170cdw"
pkgver="1.1.2"
pkgrel=1
pkgdesc="LPR and CUPS driver for the Brother HL3170CDW"
url="http://solutions.brother.com/linux/en_us/"
arch=('i686' 'x86_64')
license=('custom:brother commercial license')
depends=('cups')
install='brother-hl3170cdw.install'
source=(
	"http://www.brother.com/pub/bsc/linux/dlf/hl3170cdwlpr-$pkgver-$pkgrel.i386.rpm"
	"http://www.brother.com/pub/bsc/linux/dlf/hl3170cdwcupswrapper-$pkgver-$pkgrel.i386.rpm"
	'cupswrapper-license.txt'
	'lpr-license.txt'
)
md5sums=(
	'cee1e8e7d4f4d74de7e8667af08016db'
	'c33d91a477bfaa908b6e7a6e31e2def3'
	'97ad0cffd216059e9d1d3121899d8646'
	'5e87a3dc0f3e3438c088eda0f3565f0d'
)
build() {
	cd "$srcdir/opt/brother/Printers/hl3170cdw/cupswrapper"
#  generate the ppd
# ppd-file is already in the package
#  generate the wrapper
	echo '#! /bin/sh' > genwrapper
	sed -n '/^printer_model/,/^device_model/p' cupswrapperhl3170cdw >>genwrapper
	echo 'tmp_filter=brother_lpdwrapper_hl3170cdw' >>genwrapper
	echo 'touch $tmp_filter' >>genwrapper
	sed -n '/cat <<!ENDOFWFILTER!/,/!ENDOFWFILTER!/p' cupswrapperhl3170cdw >>genwrapper
	sed -i  's|/usr/share/cups/model/Brother|/usr/share/cups/model|g' genwrapper
	chmod +x genwrapper
	./genwrapper
#  generate other
	rm "$srcdir/opt/brother/Printers/hl3170cdw/cupswrapper/cupswrapperhl3170cdw"
	rm "$srcdir/opt/brother/Printers/hl3170cdw/cupswrapper/genwrapper"
	rm "$srcdir/opt/brother/Printers/hl3170cdw/inf/setupPrintcapij"
}
package() {
	cd "$pkgdir"
	cp -R "$srcdir/opt" "$pkgdir"
	cp -R "$srcdir/usr" "$pkgdir"
	install -m 644 -D "$srcdir/opt/brother/Printers/hl3170cdw/cupswrapper/brother_hl3170cdw_printer_en.ppd" "$pkgdir/usr/share/cups/model/brother_hl3170cdw_printer_en.ppd"
	install -m 755 -D "$srcdir/opt/brother/Printers/hl3170cdw/cupswrapper/brother_lpdwrapper_hl3170cdw" "$pkgdir/usr/lib/cups/filter/brother_lpdwrapper_hl3170cdw"
	install -m 644 -D "$startdir"/cupswrapper-license.txt "${pkgdir}/usr/share/licenses/${pkgname}/cupswrapper-licence.txt"
	install -m 644 -D "$startdir"/lpr-license.txt "${pkgdir}/usr/share/licenses/${pkgname}/lpr-licence.txt"
}