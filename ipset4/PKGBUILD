# Maintainer: Igor Nemilentsev <trezorg@gmail.com>
arch=(i686 x86_64)
license=('GPL')
pkgname=ipset4
pkgver=4.4
pkgrel=0.1
pkgdesc="Iptables extension, allowing treatment of large sets of hosts/nets as a single iptables entry. Version 4.4"
makedepends=('kernel26-headers' 'gcc')
depends=('glibc')
url="http://ipset.netfilter.org"
source=(http://ipset.netfilter.org/ipset-$pkgver.tar.bz2)

md5sums=('e21e9d9dfb8a01fc0122323ff1d6cbdb')

build() {
	cd $startdir/src/${pkgname%4}-$pkgver
	KERNEL_DIR=/usr/src/$(uname -r)	
	make PREFIX=/usr MANDIR=/usr/share/man || return 1 
	make DESTDIR=$startdir/pkg MANDIR=/usr/share/man PREFIX=/usr binaries_install || return 1
	make DESTDIR=$startdir/pkg MANDIR=/usr/share/man PREFIX=/usr INSTALL_MOD_PATH=${pkgdir} modules_install || return 1
}
