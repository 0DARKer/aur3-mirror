# Maintainer: Trương Xuân Tính <xuantinh@gmail.com>
pkgname=pencil
pkgver=2.0.2
pkgrel=1
pkgdesc="Sketching and GUI prototyping tool"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://code.google.com/p/evoluspencil/"
source=('http://evoluspencil.googlecode.com/files/pencil-2.0.2.tar.gz')
md5sums=('39acf58e6e97408f696141a0712acc84')
depends=('xulrunner')
provides=(pencil)
conflicts=(pencil)

build() {
    cp -a $srcdir/$pkgname-$pkgver/usr $pkgdir
    cp -a $srcdir/$pkgname-$pkgver/COPYING $pkgdir/usr/share/pencil
    chmod -R 755 $pkgdir
}
