#Contributor: Laurynas "Mardukas" O. <mardukaz@gmail.com>
pkgname=ledcontrol
pkgver=0.5.2
pkgrel=1
pkgdesc="Program that allows you to control keyboards LEDs"
url="http://users.tkk.fi/~spniskan/ledcontrol/"
depends=(glib)
source=(http://users.tkk.fi/~spniskan/ledcontrol/$pkgname-$pkgver.tar.gz)
md5sums=('ba20505a21e1896552cd572cc57476c7')
license=('GPL')
arch=('i686')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  rm -r $startdir/pkg/var/
}

