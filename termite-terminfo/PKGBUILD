# Maintainer: Ariel Popper <a@arielp.com>

pkgname=termite-terminfo
pkgver=6
pkgrel=1
pkgdesc="Just the terminfo for termite (A Simple VTE-based terminal)"
arch=('any')
url="https://github.con/thestinger/termite/"
license=('LGPL')
makedepends=('ncurses' 'git')

_gitroot=https://github.com/thestinger/termite
_gitname=termite

prepare() {
	msg "Staring checkoutâ€¦"
	cd "$srcdir"
	if [[ -d "$_gitname" ]]; then
		cd "$_gitname" && git checkout master && git pull origin
	else
		git clone "$_gitroot" "$_gitname"
	fi
	cd "$srcdir/$_gitname"
	git checkout v$pkgver
	msg "Checkout done or server timeout."
}

package() {
	cd "$srcdir/$_gitname"
	install -d "$pkgdir/usr/share/terminfo/x"
	tic termite.terminfo -o"$pkgdir/usr/share/terminfo"
}
