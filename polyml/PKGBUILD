# Maintainer: Ramana Kumar <first dot last at gmail dot com>
pkgname=polyml
pkgver=5.4
pkgrel=1
pkgdesc="Full implementation of Standard ML"
url="http://www.polyml.org"
arch=('i686' 'x86_64')
license=('LGPL')
depends=()
conflicts=(polyml-svn)
provides=(polyml)
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname/$pkgname.$pkgver.tar.gz)
sha256sums=('64b4e23fc2e5bab00899027d805d311025dfb192f55089729b0d18313fa96bfa')

build() {
	cd $srcdir/$pkgname.$pkgver
	./configure --prefix=/usr
	make || return 1
}

package() {
	cd $srcdir/$pkgname.$pkgver
	make DESTDIR=$pkgdir install
}
