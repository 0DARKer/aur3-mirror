pkgname=multibootusb
pkgver=6.4.0
pkgrel=4
pkgdesc="Boot multiple live Linux distros from a usb flash drive"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/multibootusb"
license=('gpl3')
depends=('gambas3-gb-image' 'gambas3-gb-gtk' 'gambas3-gb-form' 'syslinux' 'mtools')
# didn't confirmed mtool dep yet
