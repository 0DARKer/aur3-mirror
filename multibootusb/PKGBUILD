pkgname=multibootusb
pkgver=7.2.0
pkgrel=1
pkgdesc="Boot multiple live Linux distros from a usb flash drive"
arch=('any')
url="http://multibootusb.org"
license=('GPL')
depends=('python2-pyqt4' 'python2-psutil' 'mtools' 'udisks')
sha512sums=('c8e7838e0d0b05e64d3255bdfc90a2209b4e47967b0487c01761a94ea6e70810765493c74e0160cb898ce1e069dfdfa82cc22177dee6a0749d3bec35e357f0f8')
