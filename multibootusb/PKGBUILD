source=("http://downloads.sourceforge.net/project/multibootusb/Linux/Archlinux/${pkgname}-${pkgver}-1-any.pkg.tar.xz")
#source=("http://downloads.sourceforge.net/project/multibootusb/Linux/Source/${pkgname}-${pkgver}.tar.gz")
package () {
    tar -C ${pkgdir} -xvf ${srcdir}/${pkgname}-${pkgver}-1-any.pkg.tar.xz
}

