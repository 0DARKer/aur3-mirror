# Contributor: Ben R <thebenj88 *AT* gmail *DOT* com>

_pkgname=pulseaudio-mixer-cli
pkgname=pulseaudio-mixer-cli-git
pkgver=20131120
pkgrel=1
pkgdesc="An interactive ncurses UI to control volume of pulse streams"
arch=('any')
url="https://github.com/mk-fg/pulseaudio-mixer-cli"
license=('custom:unknown')
makedepends=('git')
depends=('python2')
source=(git://github.com/mk-fg/pulseaudio-mixer-cli.git)
md5sums=('SKIP')

pkgver() {
	# Git describe (--long or --tags) isn't outputting anything, so
	# I'm using the last commit date.
	git show -s --format="%ct" HEAD | date -d - +"%Y%m%d"
}

build() {

  # Use python2
  sed -i 's|/usr/bin/python|/usr/bin/python2|g' "${srcdir}/${_pkgname}/${_gitname}/${_pkgname}.py"
}

package() {

	install -Dm755 "${srcdir}/${_pkgname}/${_gitname}/${_pkgname}.py" "${pkgdir}/usr/bin/${_pkgname}"
}
