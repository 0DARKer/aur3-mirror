# Contributor: Ben R <thebenj88 *AT* gmail *DOT* com>

_pkgname=pulseaudio-mixer-cli
pkgname=pulseaudio-mixer-cli-git
pkgver=20130206
pkgrel=1
pkgdesc="An interactive ncurses UI to control volume of pulse streams"
arch=('any')
url="https://github.com/mk-fg/pulseaudio-mixer-cli"
license=('custom:unknown')
makedepends=('git')
depends=('python2')

_gitroot=git://github.com/mk-fg/pulseaudio-mixer-cli.git
_gitname=master


build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "${_gitname}" ]]; then
    cd "${_gitname}" && git pull origin
    msg "The local files are updated."
  else
    git clone "${_gitroot}" "${_gitname}"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."
  
  sed -i 's|/usr/bin/python|/usr/bin/python2|g' ${srcdir}/${_gitname}/${_pkgname}.py
}

package() {

	install -Dm755 "${srcdir}/${_gitname}/${_pkgname}.py" "${pkgdir}/usr/bin/${_pkgname}"
}
