pkgname=mate-common
pkgver=2011.12.16
pkgrel=1
pkgdesc="Common development macros for MATE"
arch=('any')
license=('GPL')
depends=()
makedepends=()
options=('!libtool')
url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('4bddf08c9dbb9f74f8bb1a69da942339da0c5c9c606fed53edfd193160719d26')


build() {
    cd "${srcdir}"
    ./autogen.sh \
        --prefix=/usr || return 1
    make || return 1
}

package() {
    cd "${srcdir}"
    make DESTDIR="${pkgdir}" install || return 1
}
