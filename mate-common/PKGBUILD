pkgname=mate-common
pkgver=2011.10.29
pkgrel=1
pkgdesc="Common development macros for MATE"
arch=('any')
license=('GPL')
depends=()
makedepends=()
options=('!libtool')
url="http://matsusoft.com.ar/projects"
groups=('mate')
source=(http://sourceforge.net/projects/matede/files/${pkgver}/${pkgname}.tar.gz/download)
sha256sums=('fe6236ef7253dcb97278168293b219fe08cb2ff7cf486f4631f0d855b7977fb6')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"
	make DESTDIR="${pkgdir}" install || return 1
}
