build() {
cd $srcdir
local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
for _gem_name in ${_gem_list[*]}
do gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_gem_name.gem
done

mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
