pkgname=lib32-gstreamer0.10-base
pkgver=0.10.31
pkgrel=1
pkgdesc="GStreamer Multimedia Framework Base Plugins (gst-plugins-base)"
url="http://gstreamer.freedesktop.org/"
arch=('x86_64')
license=('GPL' 'LGPL')
groups=('lib32')
depends=('lib32-gstreamer0.10' 'lib32-liboil' 'lib32-libsm' 'lib32-libxv')
source=(ftp://ftp.archlinux.org/extra/os/i686/gstreamer0.10-base-${pkgver}-${pkgrel}-i686.pkg.tar.xz)
md5sums=('fb5cfad276ed33eaee68a11b3e748f06')

build() {
	install -dm755 $pkgdir/usr/lib32/gstreamer-0.10 || return 1
	cp -R $srcdir/usr/lib/gstreamer-0.10/*.so* $pkgdir/usr/lib32/gstreamer-0.10 || return 1
}
