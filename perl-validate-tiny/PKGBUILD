options=('!emptydirs')
depends=('perl>=5.008' 'perl-list-moreutils')
makedepends=()
url='http://search.cpan.org/dist/Validate-Tiny'
source=('http://search.cpan.org/CPAN/authors/id/M/MI/MINIMAL/Validate-Tiny-0.982.tar.gz')
md5sums=('5ac0f57c2889c5df4f62d6d30c8eec25')
