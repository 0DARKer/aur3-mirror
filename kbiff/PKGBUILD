# Contributor: zmeYski <zmeyski@fastmail.fm>

pkgname=kbiff
pkgver=3.9
pkgrel=2
pkgdesc="A 'biff' or new mail notification utility for the KDE Desktop"
arch=("i686" "x86_64")
url="http://www.${pkgname}.org/"
depends=("kdelibs3")
makedepends=("gcc" "make")
license=("GPL")

source=(http://prdownloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('de4533a15c2647e741155c364b862025c522b6ce')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	# Build
	./configure --prefix=/opt/kde --with-qt-dir=/opt/qt --without-arts || return 1
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
}
