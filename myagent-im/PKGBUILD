# Maintainer: Igor Muzyka <muzyka-iv@mail.ru>
pkgname=myagent-im
pkgver=0.4.2
pkgrel=1
pkgdesc="Mail.Ru Agent"
arch=(i686 x86_64)
url="http://code.google.com/p/myagent-im/"
license="GPL2"
depends=('qt>=4.4' 'zlib' 'xapian-core' 'aspell' 'libxss' 'phonon')
makedepends=('gcc' 'flex' 'pkg-config' 'patch')
install='myagent-im.install'
source=(http://myagent-im.googlecode.com/files/myagent-im_$pkgver.tar.gz soundplayer.h.patch)
md5sums=('626d0e772bd15689555cd18b919d1186'
         'ba03d40c48505d6903a0c38b74a04034')

build()
{
cd $srcdir/$pkgname
patch ./src/soundplayer.h -i $startdir/soundplayer.h.patch
qmake
make
make INSTALL_ROOT="$pkgdir" install
}
