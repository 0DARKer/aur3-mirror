# Contributor: Trinh Anh Ngoc <20115681@student.hut.edu.vn>

_pkgname=IPv4Calc
pkgname=ip-calculator
pkgver=1.0
pkgrel=1
pkgdesc="IP Calculator"
arch=('i686' 'x86_64')
url="https://github.com/20115681/IPv4Calc"
license=('GPL')
depends=('mono' 'gtk-sharp-3')
makedepends=('git')
source=("$pkgname-$pkgver.tar.gz::https://github.com/20115681/$_pkgname/archive/v$pkgver.tar.gz")
md5sums=('736e34f0426e75baa1e630936f4088a6')


build() {
	cd $srcdir/$_pkgname-$pkgver

	xbuild /p:Configuration=Release $_pkgname.csproj
}

package() {
	mkdir -p $pkgdir/usr/share/$pkgname
	mkdir -p $pkgdir/usr/bin
	cd $srcdir/$_pkgname-$pkgver/bin/Release/
	chmod 755 ${_pkgname}.exe
	cp $_pkgname.exe $pkgdir/usr/share/$pkgname/$pkgname.exe
	cp -R src $pkgdir/usr/share/$pkgname/
	cd $srcdir
	cd ..
	chmod 755 $pkgname
	cp ip-calculator $pkgdir/usr/bin/$pkgname
}
