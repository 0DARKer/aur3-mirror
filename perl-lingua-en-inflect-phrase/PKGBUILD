pkgname='perl-lingua-en-inflect-phrase'
pkgver='0.04'
pkgrel='1'
pkgdesc="Inflect short English Phrases"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-lingua-en-inflect>=1.891' 'perl-lingua-en-inflect-number>=1.1' 'perl-lingua-en-tagger>=0.15' 'perl-test-simple>=0.94')
url='http://search.cpan.org/dist/Lingua-EN-Inflect-Phrase'
source=('http://search.cpan.org/CPAN/authors/id/R/RK/RKITOVER/Lingua-EN-Inflect-Phrase-0.04.tar.gz')
md5sums=('79aa10fd4a3502ff0c7b0aedce4a0f6a')

build() {
  DIST_DIR="${srcdir}/Lingua-EN-Inflect-Phrase-0.04"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&make test &&
    make DESTDIR="$pkgdir" install;  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
