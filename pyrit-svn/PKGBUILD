pkgname=pyrit-svn
pkgver=290
pkgrel=1
pkgdesc="GPU-accelerated attack against WPA-PSK authentication, development version"
url="http://code.google.com/p/pyrit/"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('python2' 'openssl' 'zlib' 'libpcap')
makedepends=('gcc')
optdepends=('cpyrit-calpp-svn: CAL++ backend'
    'cpyrit-cuda-svn: CUDA backend'
    'cpyrit-opencl-svn: OpenCL backend')

_svntrunk=http://pyrit.googlecode.com/svn/trunk
_svnmod=pyrit

build() {
  cd ${srcdir}
  svn co $_svntrunk/$_svnmod $_svnmod || return 1

  cd $_svnmod
# rm -r build
  LDFLAGS="" python2 setup.py build || return 1
  python2 setup.py install --root=${pkgdir}
}
