# Maintainer: Dan Serban

pkgname=brosix
pkgver=3.1
pkgrel=1
pkgdesc="A secure softphone, instant messaging and collaboration tool (Skype work-alike)"
arch=(i686)
url=http://www.brosix.com/download/linux/
license=(unknown:non-free)
depends=(libjpeg6 zlib)
install=brosix.install

build()
{
  wget http://security.ubuntu.com/ubuntu/pool/main/t/tiff/libtiff4_3.9.4-5ubuntu6_i386.deb
  ar -xv libtiff4_3.9.4-5ubuntu6_i386.deb
  bsdtar -xvf data.tar.gz
  cd usr/lib/i386-linux-gnu
  install -Dm755 libtiff.so.4.3.3 "${pkgdir}"/usr/lib/libtiff.so.4
  # Reuploaded to ompldr.org because the download.brosix.com server
  # sets (and checks for) some browser cookies before allowing the download 
  wget http://ompldr.org/vOHR0Mg/Brosix_free.tar.gz
  bsdtar -xvf Brosix_free.tar.gz
  mv Brosix brosix
  mkdir brosix/users
  touch brosix/users/users.ini
  chown -R root.root brosix
  mkdir -p "${pkgdir}"/usr/share
  mv brosix "${pkgdir}"/usr/share/
  mkdir -p "${pkgdir}"/usr/bin
  USRBINFILE="${pkgdir}"/usr/bin/brosix
  echo '#!/bin/bash' > "${USRBINFILE}"
  echo '/usr/share/brosix/Brosix' >> "${USRBINFILE}"
  chmod +x "${USRBINFILE}"
  mkdir -p "${pkgdir}"/usr/share/applications
  DESKTOPFILE="${pkgdir}"/usr/share/applications/brosix.desktop
  echo "[Desktop Entry]" > "${DESKTOPFILE}"
  echo "Name=Brosix" >> "${DESKTOPFILE}"
  echo "Comment=Brosix" >> "${DESKTOPFILE}"
  echo "Exec=brosix" >> "${DESKTOPFILE}"
  echo "Terminal=false" >> "${DESKTOPFILE}"
  echo "Type=Application" >> "${DESKTOPFILE}"
  echo "Categories=Network;Application;" >> "${DESKTOPFILE}"
}
