# Maintainer: birdflesh <antkoul at gmail dot com>

pkgname=trojita
pkgver=0.2.9.4
pkgrel=1
pkgdesc="A QT IMAP email client"
arch=('i686' 'x86_64')
url="http://trojita.flaska.net"
license=('GPL')
depends=('qt')
makedepends=('cmake')
source=('trojita.desktop' "http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
md5sums=('2bb9d2d18232d727d4d03675c344d87c'
	 'ac151103b79f97b9b3e701873116339c')


build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	qmake trojita.pro
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	install -Dm755 src/Gui/trojita ${pkgdir}/usr/bin/trojita
	install -Dm644 src/icons/trojita.svg ${pkgdir}/usr/share/pixmaps/trojita.svg
        install -Dm644 ${srcdir}/trojita.desktop ${pkgdir}/usr/share/applications/trojita.desktop
}
