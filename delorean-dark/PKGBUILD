pkgname=delorean-dark
pkgver=0.70
pkgrel=1
pkgdesc="The Dark Brushed-Metal Theme for gtk3, gtk2 & metacity"
arch=('any')
url="http://www.deviantart.com/download/318612217/delorean_dark_0_62_by_killhellokitty-d59oyrd.zip"
license=('GPL''Creative Commons NC SA')
depends=('gtk-engines' 'gnome-themes-standard>=3.4.1' 'gtk-engine-murrine>=0.98.2' 'gtk-engine-equinox>=1.50' 'gtk-engine-unico>=1.0.2')
source=("${pkgname}-${pkgver}.zip::http://www.deviantart.com/download/318612217/delorean_dark_0_70_by_killhellokitty-d59oyrd.zip")
md5sums=('e970fc7c4bfdb9f8531c6f9cb97f9ad5')


package() {
  # install themes
  find delorean/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}

