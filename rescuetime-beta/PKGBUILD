# Maintainer: Limao Luo <luolimao+AUR@gmail.com>

pkgname=rescuetime-beta
pkgver=2.8.5.967
pkgrel=1
pkgdesc="RescueTime time-tracking for Linux. Beta version"
arch=(i686 x86_64)
url=https://www.rescuetime.com
license=(GPL2)
depends=(qt4 xorg-xprop xprintidle)
provides=(${pkgname%-*})
conflicts=(${pkgname%-*})
install=$pkgname.install
changelog=$pkgname.changelog

if [ $CARCH = "x86_64" ]
then
    _suffix=amd64
    sha1sums=('e2b1951a9ec223156584d955744ec03fdcc20595')
else
    _suffix=i386
    sha1sums=('5e6d683b3bc29d029608b036fc0995a22a817762')
fi

source=($url/installers/rescuetime_beta_$_suffix.deb)

package() {
    bsdtar -xf data.tar.gz
    install -Dm755 usr/bin/${pkgname%-*} "$pkgdir"/usr/bin/${pkgname%-*}
}
