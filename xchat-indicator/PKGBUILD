pkgname=xchat-indicator
pkgver=0.3.3
pkgrel=1
pkgdesc="xchat-indicator"
arch=(i686 x86_64)
url="https://launchpad.net/xchat-indicator"
license=(GPL)
depends=('libindicate' 'libdbusmenu' 'ido')
makedepends=('libindicator')
source=(http://launchpad.net/$pkgname/trunk/0.3.3/+download/$pkgname-$pkgver.tar.gz)
md5sums=(183fac467cc41f9878528cc096c40b5d)
build() {
  cd $srcdir/$pkgname-$pkgver
  msg "Patching with xchat.patch"
  patch -p0 < ../../xchat.patch
  ./configure --disable-static --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

