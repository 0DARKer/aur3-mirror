pkgname=ipmiutil
pkgver=2.6.2
pkgrel=1
pkgdesc="A simple program that lists results from the hardware detection library."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/ipmiutil/"
license=('BSD2.0')
depends=('')
makedepends=('openssl')
options=('!emptydirs')
source=("http://cdnetworks-kr-1.dl.sourceforge.net/project/ipmiutil/ipmiutil/ipmiutil-${pkgver}.tar.gz")
md5sums=('b0f1ce07081cbcc290721214dc6e3816')
build() {
  cd ${srcdir}
  tar -xf ${pkgname}-${pkgver}.tar.gz

  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure  --enable-gpl
  make -j1 || return 1
  make DESTDIR=${pkgdir} install || return 1
}
