# Maintainer: bal <b.vajdics[at]gmail[dot]com>
# Contributor: xduugu
_author=jquelin
_perlmod=Audio-MPD
pkgname=mpd-dynamic
pkgver=1.113280
pkgrel=1
pkgdesc="A dynamic playlist for mpd"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~$_author/$_perlmod-$pkgver/"
license=('GPL' 'PerlArtistic')
groups=()
depends=("perl-audio-mpd=$pkgver" 'perl-getopt-euclid' 'perl-proc-daemon')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=('!emptydirs')
install=
source=(http://cpan.perl.org/modules/by-authors/id/J/JQ/JQUELIN/$_perlmod-$pkgver.tar.gz) 
md5sums=('97c98dbc8aa9d2b99bb88e274a69f39d')
sha256sums=('5772566c9428cfa3ff06def036b5589424f7594ee1633f6c46f43c84d8f538dc')

build() {
  cd "$srcdir/$_perlmod-$pkgver"
  perl Build.PL installdirs=vendor destdir="$pkgdir/"
  perl Build
}

package() {
  cd "$srcdir/$_perlmod-$pkgver"
  perl Build install

  # remove all files not necessary for mpd-dynamic
  find "$pkgdir" -type f ! -name "*mpd-dynamic*" -delete
}

