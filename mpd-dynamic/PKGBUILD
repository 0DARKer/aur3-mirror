# Maintainer: xduugu
pkgname=mpd-dynamic
pkgver=1.093170
pkgrel=1
pkgdesc="A dynamic playlist for mpd"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/Audio-MPD/bin/mpd-dynamic"
license=('GPL' 'PerlArtistic')
depends=("perl-audio-mpd=$pkgver" 'perl-getopt-euclid' 'perl-proc-daemon')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/J/JQ/JQUELIN/Audio-MPD-$pkgver.tar.gz) 
md5sums=('b91c4d79ed98778ec017e8db389a9b51')
sha256sums=('aaa4d830bbd5d01469e1a9cb5a1d359caf97b0f27e685546632fc653cf25993b')

build() {
  cd  "$srcdir/Audio-MPD-$pkgver" &&
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor &&
  make &&
  make install DESTDIR="$pkgdir" || return 1

  # remove all files not necessary for mpd-dynamic
  find "$pkgdir" -type f ! -name "*mpd-dynamic*" -delete
}
