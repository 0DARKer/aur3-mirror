# Maintainer: Adam Russell <adamlr6+arch@gmail.com>
pkgname=ruby-rspec-mocks
pkgver=2.5.0
pkgrel=1
pkgdesc="RSpec's 'test double' framework, with support for stubbing and mocking"
arch=('any')
url="http://github.com/rspec/rspec-mocks"
license=('MIT')
depends=('ruby')
source=(http://gems.rubyforge.org/gems/rspec-mocks-$pkgver.gem)
noextract=(rspec-mocks-$pkgver.gem)
md5sums=('793c61f37292de743430b1ec9783904d')

build() {
	cd "${srcdir}"
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin/" rspec-mocks-$pkgver.gem
}
