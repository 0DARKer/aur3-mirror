# Contributor: Hervé Cauwelier <herve ¤ oursours.net>
pkgname=heekscad-svn
pkgver=1283
pkgrel=1
pkgdesc="Free CAD based on Open CASCADE"
arch=('i686' 'x86_64')
url="http://code.google.com/p/heekscad/"
license=('BSD')
makedepends=('subversion' 'python' 'wxgtk' 'gtkglext' 'opencascade')
depends=('python' 'wxgtk' 'gtkglext' 'opencascade')
optdepends=('heekscnc')
provides=('heekscad')
conflicts=('heekscad')
#source=('00-CASROOT.patch')
md5sums=('c815b2b155b5523864f53cc28ff6dbdb')

_svntrunk=http://heekscad.googlecode.com/svn/trunk
_svnmod=heekscad-read-only

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  # Copy license
  mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
  cp COPYING "$pkgdir/usr/share/licenses/$pkgname/"

  #
  # BUILD
  #
  
  # I didn't get their logic
  #patch -p0 < ../../00-CASROOT.patch || return 1

  cd "src"
  make CASROOT=/opt/opencascade || return 1
  make install DESTDIR=$pkgdir PREFIX=/usr || return 1
}
