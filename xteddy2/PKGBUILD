# Maintainer: Gaetan Bisson <bisson@archlinux.org>

pkgname=xteddy2
pkgver=2.2
pkgrel=1
pkgdesc='Your virtual comfort when things get rough'
arch=('i686' 'x86_64')
url='http://webstaff.itn.liu.se/~stegu/xteddy/'
depends=('imlib2')
license=('GPL')
sha1sums=('4fcf2efc6e0f2e02ce32597d2ccfbfb2bf057199')
source=("http://webstaff.itn.liu.se/~stegu/xteddy/xteddy-$pkgver.tar.gz")

conflicts=('xteddy')
replaces=('xteddy')
provides=('xteddy')

build() {
	cd "$srcdir/xteddy-$pkgver"
	./configure --prefix=/usr --mandir=/usr/share/man
	make
}

package() {
	cd "$srcdir/xteddy-$pkgver"
	make DESTDIR="$pkgdir/" install
}
