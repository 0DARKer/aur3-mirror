pkgname=raspberry-gpio-python 
pkgver=0.3.1a 
pkgrel=1 
pkgdesc="Python library for GPIO access on a Raspberry Pi" 
arch=('any') 
url="http://code.google.com/p/raspberry-gpio-python/" 
license=('MIT') 
depends=('python') 
makedepends=('mercurial') 
source=(http://pypi.python.org/packages/source/R/RPi.GPIO/RPi.GPIO-0.3.1a.tar.gz)
md5sums=('1588ebc23872ce281b846a9f01d389af')
build() {
cd $srcdir/RPi.GPIO-0.3.1a
python setup.py install --prefix=/usr --root=$pkgdir
}
