# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=ibus-el
pkgver=0.2.1
pkgrel=3
epoch=
pkgdesc="IBus client for GNU Emacs"
arch=('i686' 'x86_64')
url="https://launchpad.net/ibus.el"
license=('GPL')
groups=()
depends=('emacs' 'python-xlib' 'ibus')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=$pkgname.install
changelog=
source=(http://launchpad.net/ibus.el/0.2/$pkgver/+download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('39d5d488669902dc8c52796fe824cb8e')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -D -m755 ibus-el-agent "${pkgdir}/usr/share/emacs/site-lisp/ibus/ibus-el-agent"
  install -D -m644 ibus.el "${pkgdir}/usr/share/emacs/site-lisp/ibus/ibus.el"
  install -D -m644 README "${pkgdir}/usr/share/emacs/site-lisp/ibus/README"
  install -D -m644 doc/ChangeLog "${pkgdir}/usr/share/emacs/site-lisp/ibus/doc/ChangeLog"
  install -D -m644 doc/COPYING "${pkgdir}/usr/share/emacs/site-lisp/ibus/doc/COPYING"
}

# vim:set ts=2 sw=2 et:
