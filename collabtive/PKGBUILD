# Maintainer: realitygaps <realitygaps AT yahoo DOT com>

pkgname=collabtive
pkgver=1.1
pkgrel=1
pkgfilever=11
pkgdesc="CollabtiveCollabtive is cloud based groupware, easy and efficient for your projects"
arch=('i686' 'x86_64')
url="http://collabtive.o-dyn.de/"
license=('GPL')
depends=('php')
install='collabtive.install'
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}/${pkgver}/${pkgname}-${pkgfilever}.zip)
md5sums=('cb6d95efbc9bba9da2b1c782944878a2')

build() {
  mkdir -p $startdir/pkg/${pkgname}/srv/http/${pkgname}
  cp -r $startdir/src/* $startdir/pkg/${pkgname}/srv/http/${pkgname}/
}
