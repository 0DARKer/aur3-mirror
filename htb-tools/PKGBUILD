# Contributor: Catalin Stoian <unixlust[at]unixlust.ath.cx>
pkgname=htb-tools
pkgver=0.2.7b
pkgrel=2
pkgdesc="a tool to help simplify the difficult process of bandwidth allocation"
arch=(i686 x86_64)
url="http://htb-tools.arny.ro"
makedepends=('flex')
source=(http://htb-tools.arny.ro/HTB-tools-current/archives/HTB-tools-$pkgver.tar.gz 
http://unixlust.googlepages.com/bitops.h)
md5sums=('14b0440393e1074cb1fcdf310590eab5'\
	 '962daca65477787ec8fd8c805aca0c70')
build() {
  cd $startdir/src/HTB-tools-$pkgver
  mkdir -p $startdir/src/HTB-tools-$pkgver/include/asm
  install -m644 $startdir/src/bitops.h $startdir/src/HTB-tools-$pkgver/include/asm/bitops.h
  mkdir -p $startdir/pkg/sbin
  make || return 1
  make OUT_DIR=$startdir/pkg/sbin install
}
