# Maintainer: damian01w <damian01w@gmail.com>
pkgname=kerneloops
pkgver=0.12
pkgrel=1
pkgdesc="Kerneloops crash sender"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.kerneloops.org"
depends=('curl' 'dbus' 'desktop-file-utils' 'gtk2' 'libnotify')
source=(http://www.kerneloops.org/download/$pkgname-$pkgver.tar.gz)
md5sums=('97e611e5b09831cb6ee31c31bf2bc286')

build() {
 cd $startdir/src/$pkgname-$pkgver/
  make || return 1
  mkdir -p $startdir/pkg/etc/xdg/autostart
  make DESTDIR=$startdir/pkg install
}
