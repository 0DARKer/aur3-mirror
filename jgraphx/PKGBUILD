# Contributor: Thomas Dziedzic < gostrc at gmail >
# Contributor: Stefan Husmann <stefan-husmann at t-online dot de>

pkgname='jgraphx'
pkgver='1.8.0.6'
pkgrel='2'
pkgdesc='Open source graph drawing component.'
arch=('any')
url='http://www.jgraph.com/jgraphx.html'
license=('BSD')
depends=('java-runtime')
makedepends=('apache-ant' 'java-environment')
source=("http://www.jgraph.com/downloads/$pkgname/archive/$pkgname-1_8_0_6.zip")
md5sums=('9dde3fd38c4caf003f03d176e0779fcf')
 
build() {
    cd $srcdir/$pkgname 
    /usr/share/java/apache-ant/bin/ant
}

package() {
    cd $srcdir/$pkgname
    install -Dm644 lib/$pkgname.jar "$pkgdir/usr/share/java/$pkgname/$pkgname.jar"
    install -Dm644 license.txt "$pkgdir/usr/share/licenses/$pkgname/license.txt"
}
