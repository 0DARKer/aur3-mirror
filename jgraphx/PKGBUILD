# Contributor: Stefan Husmann <stefan-husmann at t-online dot de>

pkgname=jgraphx
pkgver=2.1.1.1
pkgrel=1
pkgdesc="Open source graph drawing component."
arch=('any')
url="http://www.jgraph.com/jgraph.html"
license=('BSD')
depends=('java-runtime')
source=("http://downloads.jgraph.com/downloads/jgraphx/archive/jgraphx-${pkgver//./_}.zip"
)
md5sums=('6793ab8d4e02406cff36e13c9cd58f30')

package() {
  cd "${srcdir}/${pkgname}"
	install -Dm644 "lib/jgraphx.jar" \
    "${pkgdir}/usr/share/java/${pkgname}/${pkgname}.jar"
	install -Dm644 "license.txt" \
    "${pkgdir}/usr/share/licenses/${pkgname}/license.txt"
}

