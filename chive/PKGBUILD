# Maintainer: Yannic Arnoux <kianby@gmail.com>

pkgname=chive
pkgver=1.0.1
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php' 'apache')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/1.0/1.0.1/+download/chive_1.0.1.tar.gz")
noextract=(chive_1.0.1.tar.gz)

sha512sums=('6da7d6b53e3745d2b4be11ba64e7db930fe9d7a5150b6739e4a0bce458f8bb9c650b41025d0d1d071e3fe85f6d862fd1455baf765f1790d5cf67dc0d1747369a')

package() {
  mkdir $srcdir/chive
  cd $srcdir/chive
  bsdtar xf ../chive_1.0.1.tar.gz || return $?
  mkdir -p $pkgdir/srv/http/chive
  mv * $pkgdir/srv/http/chive/.
}

