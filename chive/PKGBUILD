# Maintainer: Yannic Arnoux <kianby@gmail.com>

pkgname=chive
pkgver=1.0.3
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/1.0/1.0.3/+download/chive_1.0.3.tar.gz")
noextract=(chive_1.0.3.tar.gz)

sha512sums=('b251af8ec461d88002ba1c0c3e8c3b3742354680089bbc5905ae136a1ca0cfedd849a7c94c7d828725c36ff39a51122d0f0b8f2a4695a352995c600ccb305a8c')

package() {
  mkdir -p $srcdir/chive
  cd $srcdir/chive
  bsdtar xf ../../chive_1.0.3.tar.gz || return $?
  mkdir -p $pkgdir/srv/http
  mv chive $pkgdir/srv/http/.
}

