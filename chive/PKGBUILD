pkgname=chive
pkgver=0.4.1
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php' 'apache')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/0.4/0.4.0/+download/chive_0.4.1.tar.gz")
noextract=(chive_0.4.1.tar.gz)

sha512sums=('4fc63e10d0b7872c60c79d0105c3d3bccdebdbe9f94ab07088c0304c1278dbf919d5d3176537ad77e6857181dd3119bb2fcc858311d344046f9bb8833f47526e')

package() {
  cd $srcdir
  bsdtar xf chive_0.4.1.tar.gz || return $?
  mkdir -p $pkgdir/srv/http/chive
  mv chive/* $pkgdir/srv/http/chive/.
}

