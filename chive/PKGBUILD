# Maintainer: Yannic Arnoux <kianby@gmail.com>

pkgname=chive
pkgver=1.0.0
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php' 'apache')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/1.0/1.0/+download/chive_1.0.0.tar.gz")
noextract=(chive_1.0.0.tar.gz)

sha512sums=('e41014e9016236c401b9052c091311c4960874245db1a11af6d1bd4a68dd76aa4a5050aefb7c488750eac8c32a17d8ce08c5d967955fc7ab6b2dbe133ac93fd7')

package() {
  mkdir $srcdir/chive
  cd $srcdir/chive
  bsdtar xf ../chive_1.0.0.tar.gz || return $?
  mkdir -p $pkgdir/srv/http/chive
  mv * $pkgdir/srv/http/chive/.
}

