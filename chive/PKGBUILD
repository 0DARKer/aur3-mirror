pkgname=chive
pkgver=0.4.0
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php' 'apache')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/0.4/0.4.0/+download/chive_0.4.0.tar.gz")
noextract=(chive_0.4.0.tar.gz)

sha512sums=('bbbfd2be6fb3b2355fe31ada7aa899bc224278d7bcabba1a26d6e210aa2a1b6c58a4af8a297b3399f7fc50a9eb8df8de68528b7f68176f4a490c0962edfbebce')


package() {
  cd $srcdir
  bsdtar xf chive_0.4.0.tar.gz || return $?
  mkdir -p $pkgdir/srv/http/chive
  mv chive/* $pkgdir/srv/http/chive/.
}

