pkgname=chive
pkgver=0.4.2
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php' 'apache')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/0.4/0.4.2/+download/chive_0.4.2.tar.gz")
noextract=(chive_0.4.2.tar.gz)

sha512sums=('a08897cb2b4d91bdcb71d683b2bc59291114a2c30af3a0e118e2180891ad4435a23dc80ff9b56f16189a06531d5406fc7de6cc002a9ef786843cc9aa3b453c91')

package() {
  cd $srcdir
  bsdtar xf chive_0.4.2.tar.gz || return $?
  mkdir -p $pkgdir/srv/http/chive
  mv chive/* $pkgdir/srv/http/chive/.
}

