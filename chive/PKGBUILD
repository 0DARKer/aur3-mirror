# Maintainer: Yannic Arnoux <kianby@gmail.com>

pkgname=chive
pkgver=1.0.2
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/1.0/1.0.2/+download/chive_1.0.2.tar.gz")
noextract=(chive_1.0.2.tar.gz)

sha512sums=('3346a638ed3c57d621d4995764811ad0d1aebbd9458ee4ec17eaf8b4f6a00e6278c87710ebc646be35afc5f701955bd8486053eb1f2686c290fb466aecdf8608')

package() {
  mkdir -p $srcdir/chive
  cd $srcdir/chive
  bsdtar xf ../../chive_1.0.2.tar.gz || return $?
  mkdir -p $pkgdir/srv/http
  mv chive $pkgdir/srv/http/.
}

