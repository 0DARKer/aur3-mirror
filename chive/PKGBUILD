# Maintainer: Yannic Arnoux <kianby@gmail.com>

pkgname=chive
pkgver=0.5.1
pkgrel=1
pkgdesc="Chive is a next generation MySQL database management tool. It aims to be an alternative to phpMyAdmin."
arch=('any')
license=('GPL')
depends=('php' 'apache')
url="http://www.chive-project.com/"
source=("http://launchpad.net/chive/0.5/0.5.1/+download/chive_0.5.1.tar.gz")
noextract=(chive_0.5.1.tar.gz)

sha512sums=('81575d3e18d3433b4ad04ff6264b6ef221333d9c9cb6fc3305d15173a5a3b74aeaa719559efd7f4640eadaa4e4b1b36e499c1c3bc173074d87e92aa1f4964816')
package() {
  cd $srcdir
  bsdtar xf chive_0.5.1.tar.gz || return $?
  mkdir -p $pkgdir/srv/http/chive
  mv chive/* $pkgdir/srv/http/chive/.
}

