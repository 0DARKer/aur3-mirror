# Contributor : Gabriel Morrison <gabriel2061 at gmail.com>

pkgname=powerdevil
pkgver=1.4.2
pkgrel=2
pkgdesc="KDE4PowerDevil is an utility for KDE4 Laptop Power Management"
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php/PowerDevil?content=85078"
license=('GPL')
depends=('kdebase-workspace<4.2')
makedepends=('subversion' 'cmake' 'automoc4' 'gcc')
provides=('powerdevil')
conflicts=('guidance-power-manager' 'kdebase-workspace>4.1.4')
source=(ftp://ftp.kde.org/pub/kde/stable/apps/KDE4.x/utils/powerdevil-$pkgver-kde4.1.3.tar.bz2)
md5sums=('1d6609b1677bde6fe9b4dd93af188185')

build() {
  cd $startdir/src/powerdevil-$pkgver-kde4.1.3 || return 1
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}

