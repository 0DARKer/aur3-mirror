# Contributor: Themaister <maister@archlinux.us>
pkgname=libretro-super-git
pkgver=20130520
pkgrel=1
pkgdesc="A collection of libretro implementations for RetroArch."
arch=('i686' 'x86_64')
url="https://github.com/libretro/libretro-super"
license=('various')
provides=('libretro')

_gitroot="git://github.com/libretro/libretro-super.git"
_gitname="libretro-super"

build() 
{
   cd "$srcdir"
   if [ -d "$_gitname" ]; then
      cd "$_gitname"
      git pull "$_gitroot"
   else
      git clone "$_gitroot" "$_gitname"
      cd "$_gitname"
   fi
   
   ./libretro-fetch.sh
   RARCH_DIST_DIR="$srcdir/dist/libretro" ./libretro-build.sh
}

package()
{
   cd "$srcdir/dist/libretro"
   mkdir -p "$pkgdir/usr/lib/libretro" || /bin/true
   install -m644 *.so "$pkgdir/usr/lib/libretro"
}

