# Contributor: Themaister <maister@archlinux.us>
pkgname=libretro-super-git
pkgver=20120517
pkgrel=1
pkgdesc="A collection of libretro implementations for RetroArch."
arch=('i686' 'x86_64')
url="https://github.com/Themaister/libretro-super"
license=('various')
provides=('libretro')

_gitroot="git://github.com/Themaister/libretro-super.git"
_gitname="libretro-super"

build() 
{
   cd "$srcdir"
   if [ -d "$_gitname" ]; then
      cd "$_gitname"
      git pull "$_gitroot"
   else
      git clone "$_gitroot" "$_gitname"
      cd "$_gitname"
   fi
   
   ./libretro-fetch.sh
   ./libretro-build.sh
}

package()
{
   cd "$srcdir/$_gitname"
   ./libretro-install.sh "$pkgdir/usr/lib/libretro"
}

