pkgname=nginx-site
pkgver=0.1
pkgrel=1
pkgdesc='Enable/disable sites on nginx'
arch=('any')
url='https://aur.archlinux.org/packages/nginx-site/'
license=('GPL')
groups=()
depends=(bash)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=(etc/conf.d/nginx-site.conf)
options=(!strip)
install=
source=(nginx-site nginx-site.conf)
noextract=()
install='nginx-site.install'

package(){
  cd "$srcdir"
  install -Dm755 $pkgname "$pkgdir"/usr/bin/nginx-ensite
  install -Dm644 ${pkgname}.conf "$pkgdir"/etc/conf.d/${pkgname}.conf
  ln -s nginx-ensite "$pkgdir"/usr/bin/nginx-dissite
}
md5sums=('d9eef010c5ba8018d5668f7b30611a4a'
         'afe3a99ab2874b5e82d3b41906aed9df')
