# Maintainer: Aliasbody <aliasbody@gmail.com>
pkgname=turtle_arena-bin
pkgver=0.6
pkgrel=0
pkgdesc="Turtle Arena (working title) is a free and open source cross-platform third-person action game using a modified version of the ioquake3 engine."
url="http://ztm.x10hosting.com/ta/index.htm"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=('sdl' 'openal')
source=("http://turtlearena.googlecode.com/files/turtlearena-0.6-0.zip")
 
package() { 
	install_dir="$pkgdir/opt/turtle_arena"
	file_name="turtlearena-$pkgver-$pkgrel"
	
	msg "Extracting..."
	#unzip -x $file_name.zip || return 1
	msg "Done extracting!"
	msg "Creating game folder"
	mkdir -p $install_dir
	msg "Moving Files"
	cp -R $file_name/* $install_dir
	msg "Installing menu icon..."
	mkdir -p "$pkgdir/usr/share/applications"
	
	if [ $arch != "x86_64" ]; then
		$arch="i386"
	fi

	cat > "$pkgdir/usr/share/applications/turtle_arena.desktop" <<EOF
[Desktop Entry]
Encoding=UTF-8
Name=Turtle Arena
GenericName=Turtle Arena
Icon=/opt/turtle_arena/iconw_sais.png
Exec=/opt/turtle_arena/turtlearena.$arch
Path=/opt/turtle_arena/
Categories=Game
EOF
}

md5sums=('eb2b60e35b7fa10257f26856b608018c')