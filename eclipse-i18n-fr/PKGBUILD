pkgname=eclipse-i18n-fr
pkgver=4.2.0
_pkgbuild=v20121120043402
pkgrel=5
pkgdesc="French language for eclipse IDE"
url="http://babel.eclipse.org"
arch=('any')
license=('EPL')
depends=('eclipse')
makedepends=('unzip')
source=("http://download.eclipse.org/technology/babel/babel_language_packs/R0.10.1/juno/BabelLanguagePack-eclipse-fr_${pkgver}.${_pkgbuild}.zip")
sha256sums=('7dbc3ffc82cca3cc5103fdc5422394ecf6f1a06ab27e21e15700b54c76acbb66')

package() {
  mkdir -p ${pkgdir}/usr/share/
  cp -R ${srcdir}/eclipse ${pkgdir}/usr/share/
}
