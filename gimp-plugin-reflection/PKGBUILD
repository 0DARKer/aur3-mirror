# Maintainer: gandalf3 <zzyxpaw@gmail.com>
pkgname=gimp-plugin-reflection
pkgver=285.923
pkgrel=1
pkgdesc="Gimp plugin script that adds reflection to pictures and images with a single click"
arch=('i686' 'x86_64')
url="http://code.google.com/p/gimp-reflection/"
license=('GPL')
depends=('gimp')
source=(https://raw.github.com/otaviocc/gimpscripts/master/gimp-reflection.scm)
md5sums=('b994cba0bc5ead55f8b9c6dbaec82b05')

build() {
	  cd ${srcdir}
	  mkdir -p "${pkgdir}/usr/share/gimp/2.0/scripts/"
	  cp gimp-reflection.scm "${pkgdir}/usr/share/gimp/2.0/scripts/gimp-reflection.scm"
	} 

