# Maintainer: DrZaius <lou[at]fakeoutdoorsman[dot]com>

pkgname=x262
pkgver=20130126
pkgrel=1
pkgdesc="x264 with MPEG-2 video support"
arch=('i686' 'x86_64')
license=('GPL')
depends=('glibc')
makedepends=('git' 'yasm')
url="https://github.com/kierank/x262"
_gitroot="git://github.com/kierank/x262.git"
_gitname="x262"

build() {
  cd ${srcdir}
  msg "Connecting to the Git server...."

  if [[ -d ${srcdir}/${_gitname} ]] ; then
    cd ${_gitname}
    git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  msg "Git checkout done"
  msg "Starting make..."
  rm -rf ${srcdir}/${_gitname}-build
  git clone ${srcdir}/${_gitname} ${srcdir}/${_gitname}-build
  cd ${srcdir}/${_gitname}-build

  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib/x262 \
    --includedir=/usr/include/x262 \
    --enable-static

  make
}  

package() {
  cd ${srcdir}/${_gitname}-build
  make DESTDIR=${pkgdir} install
  rm ${pkgdir}/usr/bin/x264
  rm -rf ${srcdir}/${_gitname}-build
}
