pkgname=youtrack
pkgver=4.2.1
pkgrel=1
pkgdesc="Issue Tracker and Agile Project Management Tool" 
url="https://www.jetbrains.com/youtrack/index.jsp" 
license="nonfree" 
arch=(i686 x86_64)
depends=('java-runtime') 
source=("http://download.jetbrains.com/charisma/${pkgname}-${pkgver}.jar")
sha512sums=('6232225fe0403c2eb7494cc41d0d986ad78fd767092537c2d64d830ee7f746a76e5b1109f168f9eca996104c7315dbce05d4dd33616c557dec955595e22760da')
noextract=("${pkgname}-${pkgver}.jar")
package() { 
  mkdir -p "${pkgdir}/opt/${pkgname}"
  mkdir -p "${pkgdir}/usr/bin"
  cp -r "${srcdir}/${pkgname}-${pkgver}.jar" "${pkgdir}/opt/${pkgname}/"
  echo -e "#!/bin/bash\njava -jar /opt/${pkgname}/${pkgname}-${pkgver}.jar \$@" > "${pkgdir}/usr/bin/${pkgname}"
  chmod a+x "${pkgdir}/usr/bin/${pkgname}"
}
