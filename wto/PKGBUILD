# Maintainer:Biginoz < biginoz AT free point fr>
pkgname=wto
pkgver=1.0.4
pkgrel=3
pkgdesc="web tv orange sans firefox et enregistreur en python"
arch=('any')
url="http://wto.tuxfamily.org/downloads"
license=('GPL')
groups=
provides=
depends=( 'python>=2.6' 'pygtk' 'mplayer')
makedepends=
conflicts=
replaces=
backup=
install=
source=(http://wto.tuxfamily.org/support/task/31?getfile=22/orange.py http://wto.tuxfamily.org/support/task/31?getfile=21/wto_b.py wto.desktop wto.png)
md5sums=('5bbd3983028e1ada155e3460c5a08e9c'
         '82011cd6396f40284bb725c20d184b9f'
         '2f3b1f83889ccfd35d0f79b8ee146ecc'
         '287a050191d5c92f2f0a5956685ce34a')
package() {
cd $startdir/
    sed -e "s/\#\!\/usr\/bin\/python/\#\!\/usr\/bin\/python2/g" wto_b.py > wto
}
package() {
cd $startdir/src
install -D -m 644 $startdir/wto.desktop $startdir/pkg/usr/share/applications/wto.desktop
install -D -m 644 $startdir/wto.png $startdir/pkg/usr/share/pixmaps/wto.png
install -D -m 755 $startdir/orange.py $startdir/pkg/usr/bin/orange.py
install -D -m 755 $startdir/wto $startdir/pkg/usr/bin/wto

}
