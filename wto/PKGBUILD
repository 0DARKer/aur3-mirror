# Maintainer:Biginoz < biginoz AT free point fr>
pkgname=wto
pkgver=1.0.4
pkgrel=1
pkgdesc="web tv orange sans firefox et enregistreur en python"
arch=('any')
url="http://wto.tuxfamily.org/downloads"
license=('GPL')
groups=
provides=
depends=( 'python>=2.6' 'pygtk' 'mplayer')
makedepends=
conflicts=
replaces=
backup=
install=
source=(http://download.tuxfamily.org/wto/$pkgname-$pkgver.tar.gz wto.desktop wto.png python2.patch)

md5sums=('3b49afa2e9fe12e2106b7ed2c647418a'
         '2f3b1f83889ccfd35d0f79b8ee146ecc'
         '287a050191d5c92f2f0a5956685ce34a'
         '7bb39eab94a962a55d2f4a4633933b6e')
build() {
cd $startdir/src
 patch -p0 < python2.patch

}
package() {
cd $startdir/src
install -D -m 644 $startdir/wto.desktop $startdir/pkg/usr/share/applications/wto.desktop
install -D -m 644 $startdir/wto.png $startdir/pkg/usr/share/pixmaps/wto.png
install -D -m 755 $startdir/src/wto/src/wto.py $startdir/pkg/usr/bin/wto
}