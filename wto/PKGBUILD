# Maintainer:Biginoz < biginoz AT free point fr>
pkgname=wto
pkgver=1.0.5
pkgrel=4
pkgdesc="web tv orange sans firefox et enregistreur en python"
arch=('any')
url="http://wto.tuxfamily.org/downloads"
license=('GPL')
groups=
provides=
depends=( 'python>=2.6' 'pygtk' 'mplayer')
makedepends=
conflicts=
replaces=
backup=
install=
source=(http://download.tuxfamily.org/wto/$pkgname-$pkgver-rc1.tar.gz 
wto.desktop wto.png)

md5sums=('07dbf5a6efd036db604dce7a52d9081b'
         '2f3b1f83889ccfd35d0f79b8ee146ecc'
         '287a050191d5c92f2f0a5956685ce34a')
build() {
cd $startdir/src/wto-1.0.5-rc2/src/webtvorange
sed -e "s/\#\!\/usr\/bin\/python/\#\!\/usr\/bin\/python2/g" wto.py > wto


}
package() {
cd $startdir/src/wto-1.0.5-rc2/src/webtvorange

install -D -m 644 ../../../wto.desktop $startdir/pkg/usr/share/applications/wto.desktop
install -D -m 644 ../../../wto.png $startdir/pkg/usr/share/pixmaps/wto.png
install -D -m 755 orange.py $startdir/pkg/usr/bin/orange.py
install -D -m 755 wto $startdir/pkg/usr/bin/wto

}
