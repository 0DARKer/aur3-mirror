# Contributor: Kyle Keen <keenerd@gmail.com>
pkgname=cataclysm-git
pkgver=20110827
pkgrel=1
pkgdesc="A post-apocalyptic roguelike."
url="http://cataclysmrl.blogspot.com/"
arch=('i686' 'x86_64')
license="copyright"
depends=('ncurses')
makedepends=('git')
source=()
md5sums=()

_gitroot="git://github.com/Whales/Cataclysm.git"
_gitname="Cataclysm"

build() {
  cd "$srcdir"
  msg "Connecting to github..."

  if [ -d "$srcdir"/${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "$srcdir/$_gitname"

  sed -i 's|data/|/usr/share/cataclysm/data/|g' *.cpp
  sed -i 's|save/|/usr/share/cataclysm/save/|g' *.cpp

  make PREFIX=/usr
}

package() {
  cd "$srcdir/$_gitname"
  install -Dm755 cataclysm "$pkgdir/usr/bin/cataclysm"
  install -d755  "$pkgdir/usr/share/cataclsym/data"
  cp data/* "$pkgdir/usr/share/cataclsym/data"
  install -dm755 -g games "$pkgdir/usr/share/cataclsym/save"
}
