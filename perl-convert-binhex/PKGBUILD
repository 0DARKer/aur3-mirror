# Contributor: Jakub Fi≈°er <mr@MikyMaus.org>

pkgname='perl-convert-binhex'
pkgver='1.119'
pkgrel='1'
pkgdesc='Perl module to extract data from Macintosh BinHex files'
url='http://search.cpan.org/~eryq/Convert-BinHex-1.119/'
arch=('any')
depends=('perl>=5.8.4')
source=("http://search.cpan.org/CPAN/authors/id/E/ER/ERYQ/Convert-BinHex-$pkgver.tar.gz")
md5sums=('ba70ad1772abac6270078f28197a7961')
install="${pkgname}.install"
license=('unknown')

build()
{

	cd ${startdir}/src/Convert-BinHex-${pkgver}

	eval $(perl -V:archname)

	perl Makefile.PL INSTALLARCHLIB=/usr/lib/perl5/current/${archname} INSTALLSITELIB=/usr/lib/perl5/site_perl/current INSTALLSITEARCH=/usr/lib/perl5/site_perl/current/${archname}

	make || return 1

	make DESTDIR=${startdir}/pkg install || return 1

	find ${startdir}/pkg -name '.packlist' -exec rm -f {} \;
	find ${startdir}/pkg -name 'perllocal.pod' -exec rm -f {} \;

}
