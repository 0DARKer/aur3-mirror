pkgname=glusterfs
pkgver=3.1.2
pkgrel=1
pkgdesc="Is a cluster file-system capable of scaling to several peta-bytes."
arch=('i686' 'x86_64')
url="http://www.gluster.org/"
license=('GPL3')
groups=('clustering')
depends=('fuse' 'flex' 'bison')

source=(http://ftp.gluster.com/pub/gluster/glusterfs/3.1/LATEST/$pkgname-$pkgver.tar.gz)
md5sums=('9dee75180db951cde971722f80779769')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR="$pkgdir" install

  install -D -m 755 $srcdir/$pkgname-$pkgver/README $pkgdir/usr/share/doc/glusterfs/
  install -D -m 755 $srcdir/$pkgname-$pkgver/INSTALL $pkgdir/usr/share/doc/glusterfs/
  install -D -m 755 $srcdir/$pkgname-$pkgver/COPYING $pkgdir/usr/share/doc/glusterfs/
}

# vim:set ts=2 sw=2 et:
