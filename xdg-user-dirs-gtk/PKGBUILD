pkgname=xdg-user-dirs-gtk
pkgver=0.8
pkgrel=2
pkgdesc="xdg-user-dirs-gtk is a companion to xdg-user-dirs that integrates it into the Gnome desktop and Gtk+ applications."
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/xdg-user-dirs"
license=(GPL)
depends=('gtk2' 'xdg-user-dirs')
makedepends=('intltool')
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('9d2b5902314c0eaa32beea4a5951acf2')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR=$startdir/pkg install
}
