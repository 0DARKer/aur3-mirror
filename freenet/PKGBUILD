# Maintainer: Phillip Smith <fukawi2@NO-SPAM.gmail.com>

pkgname=freenet
pkgver=0.7.5
pkgrel=1
pkgdesc="An encrypted network without censorship"
url="http://freenetproject.org/"
license=('GPL2')
arch=('i686' 'x86_64')
depends=('java-runtime')
install=freenet.install
source=(http://downloads.freenetproject.org/alpha/installer/${pkgname}07.tar.gz rc.freenet)
md5sums=('90ca919937c9eaf8fdc5b7512e052701'
         '9879b644635d9826ac786256dee8bcb9')

build() {
  msg "Nothing to compile for $pkgname"
}

package() {
  cd $srcdir/$pkgname || return 1
  
  mkdir -p $pkgdir/opt/$pkgname/ || return 1
  cp -aR * $pkgdir/opt/$pkgname/ || return 1
  chown -R 113:113 $pkgdir/opt/$pkgname || return 1
  chmod -R ug=rwX,o=rX $pkgdir/opt/freenet || return 1
  
  # Program rc.d script
  install -Dm755 $srcdir/rc.$pkgname $pkgdir/etc/rc.d/${pkgname} || return 1
  
  # Licenses
  mkdir -p $pkgname/usr/share/licenses/$pkgname/ || return 1
  cp -aR license/* $pkgname/usr/share/licenses/$pkgname/ || return 1
}

# vim:set ts=2 sw=2 et:
