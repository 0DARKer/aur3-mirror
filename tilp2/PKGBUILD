# Contributor: wandrian <wandrian@tuxfamily.org>

pkgname=tilp2
pkgver=1.14
pkgrel=1
pkgdesc="TiLP is a TI Linking Program"
arch=('i686' 'x86_64')
url="http://lpg.ticalc.org/prj_tilp/"
license=('GPL')
depends=('libglade' 'libticalcs2' 'libticables2')
conflicts=('tilp')
source=('http://www.ticalc.org/pub/unix/tilp.tar.gz' 'tilp.desktop' 'tilp2.install')
md5sums=('85f4ccd5efd96f4d25f2e0802ff096fd'
         '8afa900a352dc7e3f7328695de22bfde'
         'd245fb9980cf70e19b4339233f4c0695')
install=("$pkgname.install")

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --without-kde --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  mkdir $pkgdir/usr/share/applications
  cp $srcdir/tilp.desktop $pkgdir/usr/share/applications
}
