pkgname=python2-openelectrons-i2c
pkgver=1.4
pkgrel=1
pkgdesc="i2c read and writes for products released by openelectrons.com"
arch=(any)
url="https://pypi.python.org/pypi/OpenElectrons_i2c"
license=('unknown')
depends=('python2' 'i2c-tools')
source=('https://pypi.python.org/packages/source/O/OpenElectrons_i2c/OpenElectrons_i2c-1.4.tar.gz')
sha256sums=('b30cfca1f30007eda588677e2f0b13804016659d8a1a2694bffa735540067367')

package() {
    cd ${srcdir}/OpenElectrons_i2c-${pkgver}
    python2 setup.py install --root="${pkgdir}/" --optimize=1
}

