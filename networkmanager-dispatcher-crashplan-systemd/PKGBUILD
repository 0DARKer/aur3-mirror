# Maintainer: Robert Orzanna <orschiro@gmail.com>
pkgname=networkmanager-dispatcher-crashplan-systemd
pkgver=1.0
pkgrel=1
pkgdesc="Dispatcher Script for Crashplan Backup. It restarts the backup engine to avoid Waiting for connection error."
arch=('any')
license=('GPL')
url="https://github.com/orschiro/Linux"
depends=('networkmanager' 'systemd' 'crashplan')
provides=('networkmanager-dispatcher-crashplan')
conflicts=('networkmanager-dispatcher-crashplan')
source=('crashplan.systemd')
md5sums=('c6977463b9ee5f7e32295310f126f6ec')

package() {
  cd "${srcdir}"
  install -dm755 "${pkgdir}/etc/NetworkManager/dispatcher.d/"
  install -m700 crashplan.systemd "${pkgdir}/etc/NetworkManager/dispatcher.d/10-crashplan-systemd"
}