_pkgbasename=fuse
pkgname=lib32-$_pkgbasename
pkgver=2.8.5
pkgrel=1
pkgdesc="A library that makes it possible to implement a filesystem in a userspace program. (32 bit)"
arch=('x86_64')
url="http://fuse.sourceforge.net/"
license="GPL2"
depends=('lib32-glibc' "$_pkgbasename")
makedepends=('gcc-multilib')
source=(http://downloads.sourceforge.net/$_pkgbasename/$_pkgbasename-$pkgver.tar.gz)
options=(!libtool)
sha1sums=('862320b56d6bc4ad5e7be2b1e0b5029166aae09b')

build() {
  cd ${srcdir}/${_pkgbasename}-${pkgver}
  export CC="gcc -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure --prefix=/usr --enable-lib --disable-util --bindir=/bin \
	      --libdir=/usr/lib32 --libexecdir=/usr/lib32 --disable-static
	      
  make
}

package() {
  cd ${srcdir}/${_pkgbasename}-${pkgver}
  make DESTDIR=${pkgdir} install
  rm -r ${pkgdir}/usr/include
}
