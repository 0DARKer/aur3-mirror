# Maintainer: Nano77 <nanoarch77@gmail.com>
# Last update: 11/14/12


pkgname=gdm3setup-vala
pkgver=20111218
pkgrel=1
pkgdesc="A GUI to setting GDM3"
arch=('i686' 'x86_64')
license=('GPL')
source=()
url="http://github.com/Nano77/gdm3setup"
depends=('gdm>=3')
makedepends=('git' 'vala')
conflicts=('gdm3setup')
provides=('gdm3setup=20111214')

_gitroot="git://github.com/Nano77/gdm3setup-vala.git"
_gitname="gdm3setup-vala"

build() {
  cd ${srcdir}

  msg "Connecting to GIT server..."
  if [[ -d ${_gitname} ]]; then
    (cd ${_gitname} && git pull origin)
  else
    git clone ${_gitroot} ${_gitname}
  fi
  msg "GIT checkout done or server timeout"

}

package() {
	cd ${srcdir}/gdm3setup-vala/
	
	valac --pkg gio-2.0 'gdm3setup-daemon.vala'  --disable-warnings
	valac --pkg gtk+-3.0 --pkg gio-2.0 -X -D'GETTEXT_PACKAGE="gdm3setup"' 'gdm3setup.vala'  --disable-warnings
	
	install --mode=755 -D ${srcdir}/gdm3setup-vala/gdm3setup ${pkgdir}/usr/bin/gdm3setup
	install --mode=755 -D ${srcdir}/gdm3setup-vala/gdm3setup-daemon ${pkgdir}/usr/bin/gdm3setup-daemon
	install --mode=755 -D ${srcdir}/gdm3setup-vala/gdmlogin.py ${pkgdir}/usr/bin/gdmlogin.py
	install --mode=755 -D ${srcdir}/gdm3setup-vala/get_gdm.sh ${pkgdir}/usr/bin/get_gdm.sh
	install --mode=755 -D ${srcdir}/gdm3setup-vala/set_gdm.sh ${pkgdir}/usr/bin/set_gdm.sh
	install -D ${srcdir}/gdm3setup-vala/gdm3setup.desktop ${pkgdir}/usr/share/applications/gdm3setup.desktop
	install -D ${srcdir}/gdm3setup-vala/apps.nano77.gdm3setup.service ${pkgdir}/usr/share/dbus-1/system-services/apps.nano77.gdm3setup.service
	install -D ${srcdir}/gdm3setup-vala/apps.nano77.gdm3setup.service ${pkgdir}/usr/share/dbus-1/services/apps.nano77.gdm3setup.service
	install -D ${srcdir}/gdm3setup-vala/apps.nano77.gdm3setup.conf ${pkgdir}/etc/dbus-1/system.d/apps.nano77.gdm3setup.conf
	install -D ${srcdir}/gdm3setup-vala/apps.nano77.gdm3setup.policy ${pkgdir}/usr/share/polkit-1/actions/apps.nano77.gdm3setup.policy
	cp -r ${srcdir}/gdm3setup-vala/locale/ ${pkgdir}/usr/share/locale/
}
