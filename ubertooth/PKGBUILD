pkgname=ubertooth
pkgver=2012.10.R1
pkgrel=1
pkgdesc="A 2.4 GHz wireless development board suitable for Bluetooth experimentation. Open source hardware and software."
url="http://sourceforge.net/projects/ubertooth/"
arch=('x86_64' 'i686')
license=('GPL')
depends=('libusbx' 'libbtbb')
source=("http://downloads.sourceforge.net/project/ubertooth/ubertooth-2012-10-R1.tar.xz")
md5sums=('8eabf8e37449296f799d6985c4c23ca2')

build() {
  cd "${srcdir}/${pkgname}-2012-10-R1/host/bluetooth_rxtx"
  make
}

package() {
  cd "${srcdir}/${pkgname}-2012-10-R1/host/bluetooth_rxtx"
  mkdir -p ${pkgdir}/usr/include
  mkdir -p ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}/usr/lib
  make LDCONFIG="" INSTALL_DIR="${pkgdir}/usr/bin/" INCLUDE_DIR="${pkgdir}/usr/include/" LIB_DIR="${pkgdir}/usr/lib/" install
}

