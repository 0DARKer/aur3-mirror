# Maintainer: Jack L. Frost <fbt@fleshless.org>
pkgname=sdhcp
pkgver=0.1
pkgrel=1
pkgdesc="Suckless dhcp client"
arch=( 'i686' 'x86_64' )
url="http://git.2f30.org/sdhcp/"
license=( 'MIT/X' )
makedepends=( 'git' )
options=( 'strip' )
source=( 'http://git.2f30.org/sdhcp/snapshot/sdhcp-0.1.tar.gz' )
md5sums=('SKIP')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ln -fs ../../config.mk config.mk
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
