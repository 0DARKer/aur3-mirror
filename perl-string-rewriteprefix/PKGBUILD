pkgname='perl-string-rewriteprefix'
pkgver='0.005'
pkgrel='1'
pkgdesc="rewrite strings based on a set of known prefixes"
arch=('any')
url='http://search.cpan.org/dist/String-RewritePrefix'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-sub-exporter')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/String-RewritePrefix-0.005.tar.gz')
md5sums=('d8239dcea15b43f07211451547d860f0')

build() {
  DIST_DIR="${srcdir}/String-RewritePrefix-0.005"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

