# Contributor: zajca <zajcaa@gmail.com>
pkgname=tintwizard-svn
pkgver=130
pkgrel=1
pkgdesc="This project aims to provide an easy way to change the appearance of tint2. Through an easy-to-use graphical user interface, you can generate configs and apply to them tint2."
arch=('i686' 'x86_64')
url="http://code.google.com/p/tintwizard/"
license=('GPLv3')
depends=('python' 'pygtk' 'tint2')
makedepends=('subversion')
provides=('tintwizard')
conflicts=('tintwizard')
source=(script_tw)
md5sums=('6389a0c6d23f8f9f40f7cea17a09f5ae')

_svnmod="tintwizard"
_svntrunk="http://tintwizard.googlecode.com/svn/trunk/"

build() {
  cd ${srcdir}

  #####
  msg "Getting sources..."
  if [ -d ${_svnmod}/.svn ]; then
    (cd ${_svnmod} && svn up -r ${pkgver})
  else
    svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
    cd ${_svnmod}
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  #####

 
mkdir -p $startdir/pkg/usr/{bin,share}
cp -r $startdir/src/tintwizard $startdir/pkg/usr/share/tintwizard
install -D -m755 $startdir/src/script_tw $startdir/pkg/usr/bin/tintwizard
}