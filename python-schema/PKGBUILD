plainname=schema
pkgname="python-$plainname"
pkgver=0.1.1
_gitrev=8e16505
pkgrel=1
pkgdesc='Python module to validate and convert data structures.'
arch=('i686' 'x86_64')
url="https://github.com/halst/$plainname"
license=('MIT')
depends=('python')
source=("$plainname-$pkgver.tar.gz::https://github.com/halst/$plainname/tarball/$pkgver")
sha1sums=('e445b647c2dc6ac92a65f303c0d73f5474233d10')

package() {
	cd "$srcdir/halst-$plainname-$_gitrev"
	python setup.py install --root="$pkgdir" --optimize=1
	install -Dm644 {,"$pkgdir/usr/share/licenses/$pkgname/"}LICENSE-MIT
}