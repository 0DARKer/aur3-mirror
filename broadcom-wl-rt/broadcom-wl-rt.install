post_upgrade() {
  EXTRAMODULES='extramodules-3.6-rt'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
  echo
  echo 'For more information on this driver, see:'
  echo 'http://wiki.archlinux.org/index.php/Broadcom_BCM4312'
}

post_install() {
  post_upgrade
}

post_remove() {
  depmod -a
}

op=$1
shift
$op $*
