pkgname=mupen64plus-rsp-cxd4-git
pkgver=198
pkgrel=1
pkgdesc="mupen64plus 2.0 port for the LLE rsp plugin. Latest git pull."
url="https://bitbucket.org/ecsv/mupen64plus-rsp-cxd4"
license=("GPL")
arch=(i686 x86_64)
depends=(mupen64plus-core-hg)
makedepends=(git)
source=("${pkgname%-*}::git+https://bitbucket.org/ecsv/mupen64plus-rsp-cxd4.git")
md5sums=('SKIP')

pkgver () {
	cd "$srcdir/${pkgname%-*}"
	echo $(git rev-list --count master)
}

build() {
	cd "${srcdir}/${pkgname%-*}"
	make -C projects/unix all
}

package() {
	cd "${srcdir}/${pkgname%-*}"
	make -C projects/unix PREFIX=/usr DESTDIR=${pkgdir} install
	install -Dm644 COPYING "$pkgdir/usr/share/licenses/mupen64plus-rsp-cxd4/COPYING"
}
