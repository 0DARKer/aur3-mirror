#PCSX2-svn-bin maintainer: Hans-Kristian Arntzen <maister at archlinux.us>
_pkgname=pcsx2
pkgname=$_pkgname-bin
pkgver=9.7b
svn_co=3119
pkgrel=2
pkgdesc="A PlayStation 2 emulator (binary files)."
arch=('i686' 'x86_64')
url="http://www.pcsx2.net"
license=('GPL')

if [ $CARCH == "x86_64" ]; then
	depends=('lib32-bzip2' 'lib32-gtk2' 'nvidia-cg-toolkit' 'lib32-alsa-lib' 'lib32-sdl' 'lib32-libjpeg6' 'lib32-wxgtk' 'lib32-libxxf86vm')
else
	depends=('bzip2' 'gtk2' 'nvidia-cg-toolkit' 'alsa-lib' 'sdl' 'libjpeg6' 'wxgtk' 'libxxf86vm')
fi

install="pcsx2.install"
source=( "http://pcsx2.googlecode.com/files/$_pkgname-r$svn_co-linux-bin.tar.gz" "pcsx2.sh" )
    
md5sums=('b92852e692e19f7be1b0eca1465da45b'
         '7e05a5d90e17f4c65892a9f7b5d9f5ab')

build() {
	cd $srcdir

	mkdir -p ${pkgdir}/opt/
	cp -r ${srcdir}/pcsx2/ ${pkgdir}/opt/pcsx2/ || return 1

	install -m0755 -D ${srcdir}/pcsx2.sh ${pkgdir}/usr/bin/pcsx2 || return 1
	#rm ${pkgdir}/opt/pcsx2/memcards/*
	# Stops memory card from being overwritten
}
