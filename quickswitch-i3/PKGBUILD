pkgname='quickswitch-i3'
pkgver=2.2
pkgrel=1
pkgdesc="quickly change to and locate windows in i3"
arch=(any)
url="https://github.com/proxypoke/quickswitch-for-i3"
license=('WTFPL')
depends=('i3-wm' 'python' 'python-i3-git' 'python2-i3-git' 'dmenu')
options=(!emptydirs)
source=("https://github.com/proxypoke/quickswitch-for-i3/archive/${pkgver}.tar.gz")
sha256sums=('cf08f651c0fba42bf0ec1ddb25449193858c9a8634bd7fca2d98fa6331f40c42')

package() {
  cd "$srcdir/quickswitch-for-i3-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}
