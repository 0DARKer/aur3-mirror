pkgname=wiznote
pkgver=1.1.2
pkgrel=1
pkgdesc="Cross platform cloud note-taking application"
arch=('i686' 'x86_64')
url="http://www.wiz.cn/wiznote-linux"
license=('unknown')
depends=()

if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='x64'
    md5sums=('463ce295aa806e759f5cf0d24a489d6e' '79dc25087251d6ec57c693c677745133')
    source=('http://bbs.wiz.cn/forum-attachment-aid-NTUwM3wzMGEzOGUyZHwxMzUzNjQ3MzAzfDA%3D.html' 'wiznote.desktop')
   # srcname='wiznote-v1.1.2-x64.tar.gz'
else
    ARCH='i686'
    md5sums=('964f25a5e38c24e676ea1455c8ae94a6' '79dc25087251d6ec57c693c677745133')
    source=('http://bbs.wiz.cn/forum-attachment-aid-NTUwNXxlN2JmMTdjN3wxMzUzNjQ3MzAzfDA%3D.html' 'wiznote.desktop')
    #srcname='wiznote-v1.1.2-i386.tar.gz'
fi

#source=(http://uikb.com/cdn/wiznote-$pkgver-beta-$ARCH.deb)

build() {
    #msg "Extracting..."
    #ar -xv wiznote-$pkgver-beta-$ARCH.deb || return 1
    #tar -xvf data.tar.gz || return 1
    #tar -xvf $srcname
    #msg2 "Done extracting!"
    msg "Copying files"
    mkdir -p $pkgdir/opt/wiznote
    mkdir -p $pkgdir/usr/share/applications
    cp -R $srcdir/wiznote-v$pkgver-$ARCH/* $pkgdir/opt/wiznote
    install -Dm644 "$srcdir/wiznote.desktop" "$pkgdir/usr/share/applications/wiznote.desktop"
    msg2 "Done copying files"
}
