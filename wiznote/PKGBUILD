pkgname=wiznote
pkgver=1.2.5
pkgrel=1
pkgdesc="Opensource Cross platform cloud note-taking application"
arch=('i686' 'x86_64')
url="https://github.com/WizTeam/WizQTClient"
license=('GPLv3')
depends=()

if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='x64'
    md5sums=('eca89c24edcbc5e7729c2c56af19f280' '79dc25087251d6ec57c693c677745133')
    source=('http://bbs.wiz.cn/forum-attachment-aid-NTUwM3w1M2RhZjU4NnwxMzU1NDQ3MjE5fDA%3D.html' 'wiznote.desktop')
else
    ARCH='i686'
    md5sums=('ee6730330d2eb394fadb754a2352363c' '79dc25087251d6ec57c693c677745133')
    source=('http://bbs.wiz.cn/forum-attachment-aid-NTUwNXxjYzBlYjMyNHwxMzU1NDQ3MjE5fDA%3D.html' 'wiznote.desktop')
fi

#source=(http://uikb.com/cdn/wiznote-$pkgver-beta-$ARCH.deb)

build() {
    #msg "Extracting..."
    #ar -xv wiznote-$pkgver-beta-$ARCH.deb || return 1
    #tar -xvf data.tar.gz || return 1
    #tar -xvf $srcname
    #msg2 "Done extracting!"
    msg "Copying files"
    mkdir -p $pkgdir/opt/wiznote
    mkdir -p $pkgdir/usr/share/applications
    cp -R $srcdir/wiznote_v$pkgver\_$ARCH/* $pkgdir/opt/wiznote
    install -Dm644 "$srcdir/wiznote.desktop" "$pkgdir/usr/share/applications/wiznote.desktop"
    msg2 "Done copying files"
}
