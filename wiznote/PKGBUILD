pkgname=wiznote
pkgver=1.3
pkgrel=1
pkgdesc="Opensource Cross platform cloud note-taking application"
arch=('i686' 'x86_64')
url="https://github.com/WizTeam/WizQTClient"
license=('GPLv3')
depends=()

if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='x64'
    md5sums=('bd16aa0e2d736f30866909daf3dfe1fe' '79dc25087251d6ec57c693c677745133')
    source=('http://bbs.wiz.cn/forum-attachment-aid-NTUwM3xlYjkwMjFhYnwxMzU2NjA1MTMxfDA%3D.html' 'wiznote.desktop')
else
    ARCH='i686'
    md5sums=('7c53ee063fb6939055ea4c04dc137bfb' '79dc25087251d6ec57c693c677745133')
    source=('http://bbs.wiz.cn/forum-attachment-aid-NTUwNXxhNGFhN2VhYnwxMzU2NjA1MTMxfDA%3D.html' 'wiznote.desktop')
fi

#source=(http://uikb.com/cdn/wiznote-$pkgver-beta-$ARCH.deb)

build() {
    #msg "Extracting..."
    #ar -xv wiznote-$pkgver-beta-$ARCH.deb || return 1
    #tar -xvf data.tar.gz || return 1
    #tar -xvf $srcname
    #msg2 "Done extracting!"
    msg "Copying files"
    mkdir -p $pkgdir/opt/wiznote
    mkdir -p $pkgdir/usr/share/applications
    rm -rf $srcdir/wiznote_v$pkgver\_$ARCH/lib
    rm -rf $srcdir/wiznote_v$pkgver\_$ARCH/plugins
    cp -R $srcdir/wiznote_v$pkgver\_$ARCH/* $pkgdir/opt/wiznote

    install -Dm644 "$srcdir/wiznote.desktop" "$pkgdir/usr/share/applications/wiznote.desktop"
    msg2 "Done copying files"
}
