# Contributor: Blake Imsland <uzum4ki@gmail.com>
pkgname=imediff2
pkgver=1.1.1
pkgrel=2
pkgdesc="interactive 2-way merge tool"
arch=('i686')
url="http://elonen.iki.fi/code/imediff/"
license=('GPL')
depends=('ncurses' 'python')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
install=
source=(http://alioth.debian.org/frs/download.php/1439/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('e630e96229a7d0364f73ff595794c07c')

build() {
  cd $startdir/src/$pkgname
  install -D -o root -g root -m 0755 imediff2 $startdir/pkg/usr/bin/imediff2
  install -D -o root -g root -m 0644 imediff2.1 $startdir/pkg/usr/man/man1/imediff2.1
}
