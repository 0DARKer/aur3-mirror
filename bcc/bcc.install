# Maintainer: Andre Bartke <dev@bartke.cc>

_target="sparc-elf"
_sysroot="/usr/lib/cross-sparc-unknown-elf"
 
post_install() {
  echo ">>> When using the toolchain, it is sufficient to adjust the PATH:"
  echo "    export PATH=\"${_sysroot}/${_target}/bin:\${PATH}\""
  echo ""
}

post_upgrade() {
  post_install $1
}

