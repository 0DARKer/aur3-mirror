# Maintainer: Christian Sturm <reezer@reezer.org>
pkgname=perl-ev
pkgver=4.03
pkgrel=1
pkgdesc="perl interface to libev, a high performance full-featured event loop "
arch=(any)
url="http://metacpan.org/release/EV"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.12.0' libev perl-common-sense)
options=(!emptydirs)
install=
source=(http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/EV-$pkgver.tar.gz)
md5sums=('33088705bc34bf66bccde50205c15e9f')

build() {
  cd "$srcdir/EV-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1
}

# vim:set ts=2 sw=2 et:
