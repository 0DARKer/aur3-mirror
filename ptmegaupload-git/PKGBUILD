# Maintainer: PyrO_70 <brieuc.roblin at gmail dot com>
pkgname=ptmegaupload-git
pkgver=20110601
pkgrel=3
pkgdesc="Megaupload Search & Download"
arch=('i686' 'x86_64')
url=http://www.pyrotools.org/
license=('GPL')
depends=('qt')
makedepends=('git')

_gitroot=git://gitorious.org/ptmegaupload/ptmegaupload.git
_gitname=ptmegaupload

build() {
  cd ${pkgsrc}

  msg2 "Connecting to gitorious ..."

  if [ -d  ] ; then
    ( cd ${_gitname}  && git pull )
  else
    git clone ${_gitroot} || return 1
  fi

  msg2 "Starting make..."
  
  cd ${_gitname} 

  qmake INSTALL_PREFIX=/usr || return 1
  make || return 1
  make INSTALL_ROOT=${pkgdir} install || return 1
}
