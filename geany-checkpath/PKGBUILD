# Maintainer: Lara Maia <lara@craft.net.br>

pkgname=geany-checkpath
pkgdesc='Geany wrapper for autodetect permissions/root'
url='http://github.com/PessoalProjects/tools'

pkgver=2.3
pkgrel=1
arch=(any)

license=('GPL')

depends=('sudo' 'geany')

source=('https://raw.github.com/PessoalProjects/tools/master/geany_checkpath')
md5sums=('ee9503a8d1c2f10fadb5ff622fdf9fea')

package() {
	install -Dm755 "$srcdir"/geany_checkpath "$pkgdir"/usr/bin/geany_checkpath
}
