# Maintainer: David J. Haines <djhaines at gmx dot com>
# Contributor: Benjamin Hodgetts (Enverex) <ben@xnode.org>

pkgname=pioneer
pkgver=20140201
pkgrel=1
pkgdesc="A freeform single player space adventure in the spirit of Frontier: Elite II."
arch=('i686' 'x86_64')
url="http://pioneerspacesim.net/"
license=('GPL')
conflicts=('pioneer-git')
install='pioneer.install'
depends=('libsigc++' 'libvorbis' 'sdl2_image' 'assimp' 'glew' 'freetype2')

source=("pioneer.png"
	"pioneer.desktop"
	"pioneer.install"
	"https://github.com/pioneerspacesim/pioneer/archive/${pkgver}.tar.gz"
)

build () {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./bootstrap
    PIONEER_DATA_DIR="/usr/share/pioneer" ./configure --prefix="/usr"
}

package() {
    install -Dm644 "${srcdir}/pioneer.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
    install -Dm644 "${srcdir}/pioneer.png" "${pkgdir}/usr/share/pixmaps/${pkgname}.png"
    install -Dm644 "${srcdir}/${pkgname}-${pkgver}/Quickstart.txt" "${pkgdir}/usr/share/doc/pioneer/quickstart.txt"
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}

md5sums=('46e51941124eb3cf1af9233820223478'
         'bd49077f31374008ff8026196df220da'
         '0078a66710b4aada8afe67975e3e06fe'
         'c85ea119007fde59edd4eb811adf526c')
