# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-envisageplugins-git
pkgver=20110205
pkgrel=1
pkgdesc="Plug-ins for the Envisage framework"
arch=('any')
url="https://github.com/enthought/envisageplugins"
license=('BSD')
depends=('python2' 'python2-envisagecore'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('git' 'python2-distribute')
provides=('python2-envisageplugins')
conflicts=('python-enthought-utils' 'python2-envisageplugins' 'python-ets-envisageplugins-svn')
replaces=('python-ets-envisageplugins-svn')
options=(!emptydirs)

_gitroot="https://github.com/enthought/envisageplugins.git"
_gitname="envisageplugins"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

