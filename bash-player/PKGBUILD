# Maintainer: Levi (levi0x0)
pkgname=bash-player
pkgver=0.6.3
pkgrel=1
pkgdesc="A simple GUI for Mplayer"
url="https://github.com/levi0x0/bash-player"
license=("GPL3")
arch=('any')
depends=('zenity' 'mplayer')
source=('https://github.com/levi0x0/bash-player/archive/0.6-3-AUR.tar.gz')
md5sums=('4811b8fa71ef177db6f4393d54e65cf7')
pkgvera="$pkgname-0.6-3-AUR"
package() {
  install -Dm755 "$srcdir/$pkgvera/bmplayer.sh" "$pkgdir/usr/bin/bmplayer"
  install -Dm755 "$srcdir/$pkgvera/bash-player.png" "$pkgdir/usr/share/pixmaps/bash-player.png"
  install -Dm755 "$srcdir/$pkgvera/bash-player.desktop" "$pkgdir/usr/share/applications/bash-player.desktop"
}

