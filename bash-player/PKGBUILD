# Maintainer: Levi (levi0x0)
pkgname=bash-player
pkgver=20140129
pkgrel=1
pkgdesc="A simple GUI for Mplayer"
url="https://github.com/levi0x0/bash-player"
license=("GPL3")
arch=('any')
makedepends=('git')
depends=('zenity' 'mplayer')
#source=('git://github.com/levi0x0/bash-player.git')
source=('git+https://github.com/levi0x0/bash-player.git')
md5sums=('SKIP')

pkgver() {
    cd "$pkgname"
    git show -s --format="%ci" HEAD | sed -e 's/-//g' -e 's/ .*//'
}

package() {
  install -Dm755 "$srcdir/$pkgname/bmplayer.sh" "$pkgdir/usr/bin/bmplayer"
  install -Dm755 "$srcdir/$pkgname/bash-player.png" "$pkgdir/usr/share/pixmaps/bash-player.png"
  install -Dm755 "$srcdir/$pkgname/bash-player.desktop" "$pkgdir/usr/share/applications/bash-player.desktop"
}

