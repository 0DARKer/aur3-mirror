# Maintainer: Dany Martineau <dany.luc.martineau@gmail.com>

pkgname=emoc
pkgver=0.91
pkgrel=1
pkgdesc="Front end for ffmpeg and mencoder."
arch=('i686' 'x86_64')
url="http://www.beli.ws/apps/emoc/" 
license="GPL"
depends=('qt' 'ffmpeg' 'mplayer')
makedepends=('make')
source=(http://www.beli.ws/apps/emoc/${pkgname}.tar.gz emoc.desktop)
md5sums=('94b9aad7155e93a7ea69b72a573cf2b4' 'a917133f2c157c63e0fa9ac0be18a0c4')

build() { 
	cd ${srcdir}/${pkgname}
	qmake || return 1
	make clean || return 1
	make || return 1
        mkdir -p ${pkgdir}/usr/bin  
        mkdir -p ${pkgdir}/usr/share/applications
        install -m755 emoc ${pkgdir}/usr/bin
        install ${srcdir}/emoc.desktop ${pkgdir}/usr/share/applications
}
