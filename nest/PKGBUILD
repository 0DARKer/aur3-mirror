# Maintainer: Benjamin Wild <nimajnebwild@gmail.com>
pkgname=nest
pkgver=2.2.2
pkgrel=1
pkgdesc="NEST is a simulator for spiking neural network models that focuses on the dynamics, size and structure of neural systems rather than on the exact morphology of individual neurons."
arch=('i686' 'x86_64')
url="http://www.nest-initiative.org"
license=('GPL')
groups=()
depends=(gsl openmpi python2)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://www.nest-simulator.org/download/gplreleases/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('ced2d42091061973f6a18f0e5b97129f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --with-python=/usr/bin/python2 --with-gsl --with-openmpi
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
