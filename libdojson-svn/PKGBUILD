pkgname=libdojson-svn
pkgver=15
pkgrel=1
pkgdesc="A library to read and write JSON files."
arch=('i686' 'x86_64')
url="http://code.google.com/p/libdojson/"
license=('LGPL')
depends=()
makedepends=('gcc' 'subversion' 'cmake' 're2c')
options=()
conflicts=('libdojson')
provides=('libdojson')
source=()
md5sums=()

_svntrunk=https://libdojson.googlecode.com/svn/trunk/
_svnmod=libdojson

build() {

	cd $startdir/src

	if [ -d $_svnmod/.svn ]; then
		(cd libdojson && svn up -r $pkgver)
	else
		svn co $_svntrunk -r $pkgver $_svnmod
	fi

	msg "SVN checkout done or server timeout"
	msg "Starting make..."


	mkdir libdojson-build
	cd libdojson-build

	cmake -DCMAKE_INSTALL_PREFIX=/usr ../$_svnmod/libdojson
	make || return 1
	make DESTDIR=$startdir/pkg/ install

	rm -rf $startdir/src/libdojson-build

}
