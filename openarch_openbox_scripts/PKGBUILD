pkgname=openarch_openbox_scripts
pkgver=0.1
pkgrel=4
pkgdesc="Some wrapper scripts for openbox"
arch=('any')
groups=('openarch_scripts')
url="http://ovsinc.narod.ru"
license=('GPL')
depends=('openbox' 'bash' 'python' 'perl' 'gnome-menus')
source=('xcompmgr.sh' 'xdg-menu.py'
	'volume.sh' 'obpipemenu-places.pl'
	'bindkeys.sh')


build() {
	cd "${srcdir}"
	install -d -m755 "${pkgdir}"/usr/bin
	for i in *; do
	    install -m755 "${srcdir}/${i}" "${pkgdir}/usr/bin/${i}"
	done
}
md5sums=('fe6d5e84207e20da4e13a9808df5a9e9'
         'f0a4bcf9e8ddc28491a5e6522a68f76e'
         'f264c2815b4f7087fb5382e8b96417ef'
         'cb5906e8bb3d0fa40c271626d8b7e358'
         '2ec886041e5d0786e55f706f9e2e1ef5')
