pkgname=nautilus-locked-folder
pkgver=8
pkgrel=1
pkgdesc="A plugin that allows to encrypt the contents of a folder using the Blowfish algorithm"
arch=('i686' 'x86_64')
url="http://www.gnome.org/projects/nautilus-locked-folders"
license=('GPL')
depends=('nautilus' 'openssl' 'libglade' 'libgnomeui' 'eel')
makedepends=('subversion' 'gnome-common' 'intltool')
options=('!libtool' '!emptydirs')
_svntrunk=http://svn.gnome.org/svn/nautilus-locked-folder/trunk
_svnmod=nautilus-locked-folder

build() {
  cd $srcdir

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./autogen.sh

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR=$pkgdir install

  rm -rf $srcdir/$_svnmod-build
}
