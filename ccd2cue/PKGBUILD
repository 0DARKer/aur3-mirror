# Begin PKGBUILD

pkgname=ccd2cue
pkgver=0.4
pkgrel=1
pkgdesc="Convert CloneCD cuesheets (.ccd) to less-compatible CDRWIN cuesheets (.cue)."
arch=('i686' 'x86_64')
url="https://www.gnu.org/software/ccd2cue/"
license=('GPL3')
source="http://ftpmirror.gnu.org/$pkgname/$pkgname-$pkgver.tar.gz"
sha256sums=('64f1891c72bbdf929a82391b266d4a34e1dcd80a7d523690df2f5f8fac2d9dcf')
validpgpkeys=('7CB1208C733656B75962250027B9C6FD28D618AF')

build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

check() {
	cd "$pkgname-$pkgver"
	make -k check
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
