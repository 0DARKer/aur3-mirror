# Contributor: Mario Danic <mario.danic>

pkgname=bzr-fastimport-russo79-bzr
pkgver=303
pkgrel=1
pkgdesc="Plugin providing fast loading of revision control data into Bazaar - russo79 branch"
arch=(i686 x86_64)
url="https://launchpad.net/bzr-fastimport"
license=('GPL' 'MIT')
groups=(bzr)
depends=('python2' 'setuptools' 'bzr' 'python2-fastimport-bzr')
provides=('bzr-fastimport-bzr')
conflicts=('bzr-fastimport-bzr')
makedepends=('bzr')

_bzrtrunk=lp:~russo79/bzr-fastimport/my-fixes
_bzrsrc=bzr-fastimport

build() {
  cd $srcdir
  msg "Connecting to $_bzrtrunk bzr server...."

  if [ -d $_bzrsrc ]; then
    bzr up $_bzrsrc
    msg "The local files are updated."
  else
    bzr co $_bzrtrunk $_bzrsrc
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  rm -rf $_bzrsrc-build
  cp -r $_bzrsrc $_bzrsrc-build
  cd $_bzrsrc-build
}

package() {
  cd $srcdir/$_bzrsrc-build
  python2 setup.py install --prefix='/usr' --root=$pkgdir || return 1
}
