# Maintainer: Bart≈Çomiej Piotrowski <bpiotrowski@archlinux.org>

pkgname=howl-editor-git
pkgver=0.1.1.92.g58228fb
pkgrel=1
pkgdesc='General purpose, light-weight customizable editor'
arch=('i686' 'x86_64')
url='http://howl.io/'
license=('MIT')
depends=('gtk3')
makedepends=('git' 'wget')
provides=('howl-editor')
conflicts=('howl-editor')
install=howl-editor.install
source=(git://github.com/nilnor/howl.git)
md5sums=('SKIP')

pkgver() {
  cd howl
  git describe | tr - .
}

build() {
  cd howl/src
  make
}

package() {
  make -C howl/src PREFIX=/usr DESTDIR="$pkgdir" install
}
