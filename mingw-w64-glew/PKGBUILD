pkgname=mingw-w64-glew
pkgver=1.7.0
pkgrel=3
pkgdesc="GLEW, The OpenGL Extension Wrangler Library (mingw-w64)"
arch=('any')
url="http://glew.sourceforge.net/"
license=('Modified BSD/MIT/GPL')
depends=('mingw-w64-crt')
makedepends=('mingw-w64-gcc')
options=(!strip !buildflags)
provides=('mingw-w64-glew-lib32' 'mingw-w64-glew-pure64')
source=(http://downloads.sourceforge.net/glew/glew-${pkgver}.tgz
        Makefile.patch
        Makefile.mingw-32.patch
        Makefile.mingw-64.patch)
noextract=()
md5sums=('fb7a8bb79187ac98a90b57f0f27a3e84'
         'dd09a506bcf5a0424a26d274346e8737'
         '362518879c2dfccd21ac16f00272c2d6'
         'c810401115b89becccdfb7041bbbbd82')

build() {
  cd "$srcdir/glew-$pkgver"

  unset LDFLAGS

  patch Makefile -i "../../Makefile.patch"


  cp config/Makefile.{mingw,mingw_custom}
  patch config/Makefile.mingw_custom -i "../../Makefile.mingw-32.patch"

  echo -e "#!/bin/sh\necho mingw_custom" > config/config.guess

  GLEW_DEST=/usr/i686-w64-mingw32/ make

  mkdir -p "$pkgdir/usr/i686-w64-mingw32/lib/pkgconfig"
  GLEW_DEST="$pkgdir/usr/i686-w64-mingw32" make install


  make clean


  cp config/Makefile.{mingw,mingw_custom}
  patch config/Makefile.mingw_custom -i "../../Makefile.mingw-64.patch"

  echo -e "#!/bin/sh\necho mingw_custom" > config/config.guess

  GLEW_DEST=/usr/x86_64-w64-mingw32/ make

  mkdir -p "$pkgdir/usr/x86_64-w64-mingw32/lib/pkgconfig"
  GLEW_DEST="$pkgdir/usr/x86_64-w64-mingw32" make install
}
