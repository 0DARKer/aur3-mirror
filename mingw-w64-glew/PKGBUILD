pkgname=mingw-w64-glew
pkgver=1.6.0
pkgrel=1
pkgdesc="GLEW, The OpenGL Extension Wrangler Library (mingw-w64)"
arch=('any')
url="http://glew.sourceforge.net/"
license=('Modified BSD/MIT/GPL')
depends=('mingw-w64-bin')
makedepends=('sed')
options=(!strip)
source=(http://downloads.sourceforge.net/glew/glew-${pkgver}.tgz Makefile.patch Makefile.mingw.patch)
noextract=()
md5sums=('7dfbb444b5a4e125bc5dba0aef403082'
         'dd09a506bcf5a0424a26d274346e8737'
         'c810401115b89becccdfb7041bbbbd82')

build() {
  cd "$srcdir/glew-$pkgver"

  unset LDFLAGS

  patch Makefile -i "../../Makefile.patch"
  patch config/Makefile.mingw -i "../../Makefile.mingw.patch"

  echo -e "#!/bin/sh\necho mingw" > config/config.guess

  GLEW_DEST=/opt/mingw_w64/x86_64-w64-mingw32/ make || return 1
}

package() {
  cd "$srcdir/glew-$pkgver"
  mkdir -p "$pkgdir/opt/mingw_w64/x86_64-w64-mingw32/lib/pkgconfig"
  GLEW_DEST="$pkgdir/opt/mingw_w64/x86_64-w64-mingw32" make install
}
