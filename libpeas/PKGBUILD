# Contributor: Jesse jaara <jesse.jaara@gmail.com>

pkgname=libpeas
pkgver=0.5.5
pkgrel=1
pkgdesc="gobject-based plugins engine"
arch=(i686 x86_64)    
license=('LGPL' 'MPL')
url="http://live.gnome.org/Libpeas"
depends=('glib2>=2.18.0' 'gobject-introspection>=0.9')
makedepends=('pkgconfig' 'intltool')  
provides=("libpeas")
source=("http://ftp.gnome.org/pub/GNOME/sources/libpeas/0.5/libpeas-0.5.5.tar.bz2")

build() {
  cd "${srcdir}/libpeas-${pkgver}"
  ./configure -disable-gtk --prefix /usr
  make
}

package() {
  cd "${srcdir}/libpeas-${pkgver}"

  make DESTDIR="${pkgdir}" install || return 1
}
md5sums=('b04e5909b044977ad8caf97f34b54747')
