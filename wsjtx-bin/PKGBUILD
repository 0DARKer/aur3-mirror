# Maintainer: Thomas Gatzweiler <thomas.gatzweiler@gmail.com>

pkgname=wsjtx-bin
pkgver=1.4.0rc2
pkgrel=1
pkgdesc="Software for Amateur Radio Weak-Signal Communication (JT9 and JT65)"
arch=(i386 x86_64)
url="http://physics.princeton.edu/pulsar/k1jt/wsjtx.html"
license=("GPL-3")
depends=(qt5-base qt5-multimedia)
makedepends=()

if test $CARCH == "x86_64"; then
  debfile="wsjtx_1.4.0-rc2_amd64.deb"
  md5sums=(31a87fa89b7af6c52775b0e6189d8e94)
else
  debfile="wsjtx_1.4.0-rc2_i386.deb"
  md5sums=(3098bf2cf972eb0ccb4555afd004839e)
fi
  
source=("http://physics.princeton.edu/pulsar/k1jt/${debfile}")

prepare() {
	cd "$srcdir"
	ar vx $debfile
}

package() {
	cd "$srcdir"
	tar -C ${pkgdir}/ -xvf data.tar.gz
	cd "$pkgdir"
	chmod 755 usr/ usr/share/ usr/bin/ usr/share/doc/ 
	chmod 755 usr/share/applications/ usr/share/pixmaps/
}
