# Contributor: [vEX] <niechift.dot.vex.at.gmail.dot.com>
pkgname=snesfilter
pkgver=0.009
pkgrel=1
pkgdesc="bsnes library for output filters."
arch=('i686' 'x86_64')
url="http://byuu.org/bsnes/"
license=('GPL2')
depends=('qt>=4.5.0')
makedepends=('pkgconfig')
source=("http://byuu.org/files/${pkgname}_v009.tar.bz2")
md5sums=('08b12f03b30594d9dec6f7668aad055f')

build() {
  cd "${srcdir}/${pkgname}"

  # Conform to the Arch Linux packaging standards
  sed -e 's|\(libsnesfilter.*\) $(DESTDIR)$(prefix)/lib|\1 $(DESTDIR)$(prefix)/lib/\1|' \
      -i "${srcdir}/${pkgname}/Makefile" || return 1

  # Build and install it
  make || return 1
  make install DESTDIR=$pkgdir prefix=/usr || return 1
  chmod 644 "${pkgdir}/usr/lib/lib${pkgname}.a" || return 1
}

