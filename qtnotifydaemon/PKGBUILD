pkgname=qtnotifydaemon 
pkgver=1.0.6
pkgrel=1
pkgdesc="Configurable and flexible Qt notification daemon"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/${pkgname}"
license=('GPL3')
depends=('qt')
source=("http://downloads.sourceforge.net/project/${pkgname}/${pkgname}_${pkgver}.tar" 'org.freedesktop.Notifications.service')
md5sums=('44947a201cce73aa6883e0d70ee12144'
         '3ddb9114a6de013592449a88a12aef46')

build()  {
 cd ${srcdir}/${pkgname}
 qmake
 make
}

package() {
  install -Dm 755 ${srcdir}/${pkgname}/${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -Dm 644 org.freedesktop.Notifications.service ${pkgdir}/usr/share/dbus-1/services/org.freedesktop.Notifications.service
}