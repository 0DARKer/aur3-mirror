# Maintainer: L.G. Sarmiento (Pico) <Luis.Sarmientop-ala-nuclear.lu.se>
pkgname=geant4-radioactivedata
_dataname="G4RadioactiveDecay"
_foldername="RadioactiveDecay"
pkgver=3.6
pkgrel=1
pkgdesc="Data files for shell ionisation cross sections"
url="http://geant4.cern.ch/"
arch=('any')
license=('GPL')
depends=('geant4')
install="${pkgname}.install"
source=("http://geant4.cern.ch/support/source/${_dataname}.${pkgver}.tar.gz"
  "${pkgname}.install")
md5sums=('9566ff1614bea7455343328cb66abd6f'
         '53e2e446000525aa36af01f89d01afb8')
build() {
  install -d ${pkgdir}/usr/share/${pkgname}
  mv ${srcdir}/${_foldername}${pkgver} ${pkgdir}/usr/share/${pkgname}
}
