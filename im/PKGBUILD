# Maintainer: Mihai Militaru <mihai dot militaru at xmpp dot ro>

pkgname=im
pkgver=3.6.3
pkgrel=2
pkgdesc="Toolkit for Digital Imaging."
arch=('i686' 'x86_64')
url="http://www.tecgraf.puc-rio.br/im/"
license=('MIT')
depends=('gcc-libs')
makedepends=('lua')

source=(http://sourceforge.net/projects/imtoolkit/files/${pkgver}/Docs%20and%20Sources/${pkgname}-${pkgver}_Sources.tar.gz)
sha1sums=('14a800e3e1642acb97c569bd7f50d413fa375d5a' )

build() {
  cd ${srcdir}/im
  make
  mkdir -p ${pkgdir}/usr/{include,lib}

  install -m644 ${srcdir}/im/lib/Linux*/libim*.a ${pkgdir}/usr/lib/
  install -m755 ${srcdir}/im/lib/Linux*/libim*.so ${pkgdir}/usr/lib/
  install ${srcdir}/im/include/* ${pkgdir}/usr/include/
}
