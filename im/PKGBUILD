# Maintainer: maoserr

pkgname=im
pkgver=3.6.2
pkgrel=1
pkgdesc="Toolkit for Digital Imaging."
arch=('i686' 'x86_64')
url="http://www.tecgraf.puc-rio.br/im/"
license=('custom:tecgraf_library')
depends=('gcc-libs')
optdepends=('lua: bindings for Lua are available')
provides=('im')
conflicts=('im')

source=(http://sourceforge.net/projects/imtoolkit/files/${pkgver}/Linux%20Libraries/${pkgname}-${pkgver}_Linux26_lib.tar.gz/download 'LICENSE')
[ $CARCH = 'x86_64' ] && source=(http://sourceforge.net/projects/imtoolkit/files/${pkgver}/Linux%20Libraries/${pkgname}-${pkgver}_Linux26_64_lib.tar.gz/download 'LICENSE')
md5sums=('e17936e8c38216733f33ee2eeb78237d' 
	'e73a2a7e8f737f4d0801bd368e2e1121')
[ $CARCH = 'x86_64' ] && md5sums=('d3519921910e128c36217c7c4016da4c' 
	'e73a2a7e8f737f4d0801bd368e2e1121')

build() {
  mkdir -p $pkgdir/usr/{include,lib} || return 1
  install -m644 $srcdir/libim*.a $pkgdir/usr/lib/ || return 1 
  install -m755 $srcdir/libim*.so $pkgdir/usr/lib/ || return 1 
  install $srcdir/include/* $pkgdir/usr/include/ || return 1
  install -D $startdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1
}
