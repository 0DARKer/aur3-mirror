# Maintainer: maoserr

pkgname=im
pkgver=3.6.3
pkgrel=1
pkgdesc="Toolkit for Digital Imaging."
arch=('i686' 'x86_64')
url="http://www.tecgraf.puc-rio.br/im/"
license=('MIT')
depends=('gcc-libs')
makedepends=('lua')
optdepends=('lua: bindings for Lua are available')

source=(http://sourceforge.net/projects/imtoolkit/files/${pkgver}/Docs%20and%20Sources/${pkgname}-${pkgver}_Sources.tar.gz)
md5sums=('a4e881b9b697318edb0e7c7538302256' )

build() {
  cd ${srcdir}/im || return 1
  make || return 1
  mkdir -p ${pkgdir}/usr/{include/im,lib} || return 1
  install -m644 ${srcdir}/im/lib/Linux26g4_64/libim*.a ${pkgdir}/usr/lib/ || return 1 
  install -m755 ${srcdir}/im/lib/Linux26g4_64/libim*.so ${pkgdir}/usr/lib/ || return 1 
  install ${srcdir}/im/include/* ${pkgdir}/usr/include/im/ || return 1
}
