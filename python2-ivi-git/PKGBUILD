# Maintainer: Alex Forencich <alex@alexforencich.com>
pkgname=python2-ivi-git
pkgver=20130619
pkgrel=1
pkgdesc="Python Interchangeable Virtual Instrument Library"
arch=('any')
url="https://github.com/alexforencich/python-ivi"
license=('MIT')
depends=('python2' 'python2-numpy')
makedepends=('git')
provides=('python2-ivi')
optdepends=('python2-vxi11: VXI11 instrument support')

_gitroot='https://github.com/alexforencich/python-ivi.git'
_gitname='python-ivi'

build() {
  cd "$srcdir"
  msg "Connecting to github.com"

  if [ -d "$_gitname" ] ;then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot"
  fi
  msg "GIT checkout done or server timeout"

  cd "$srcdir/$_gitname"

  git checkout master
}

package() {
  cd "$srcdir/$_gitname"
  python2 setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

