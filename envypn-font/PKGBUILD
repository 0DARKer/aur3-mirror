# Maintainer: Ypnose   http://tetedulinuxien.fr

pkgname=envypn-font
pkgver=1.2
pkgrel=1
pkgdesc="Terminal font inspired by Envy Code R"
url="https://github.com/Ypnose"
arch=('any')
license=('GPLv2')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install='envypn-font.install'
source=("https://github.com/downloads/Ypnose/Madfiles/$pkgname-$pkgver.tar.gz")
md5sums=('fdce88b7704cd664a14851bd4b2bb0f4')


package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  install -d "$pkgdir/usr/share/fonts/envypn"
  install -m644 *.pcf "$pkgdir/usr/share/fonts/envypn"
}
