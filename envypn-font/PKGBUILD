pkgname=envypn-font
pkgver=1.0
pkgrel=1
pkgdesc="Terminal font inspired by Envy Code R"
url="https://github.com/Ypnose"
arch=('any')
license=('GPLv2')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install='envypn-font.install'
source=("https://github.com/downloads/Ypnose/Madfiles/envypn.pcf")
md5sums=('61ec9a6b97d5f4c797e2a7b4441de932')


package() {
  cd "${srcdir}/"
  
  install -d "$pkgdir/usr/share/fonts/envypn"
  install -m644 *.pcf "$pkgdir/usr/share/fonts/envypn"
}
