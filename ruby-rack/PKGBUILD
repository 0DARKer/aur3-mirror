# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rack
pkgver=1.2.2
pkgrel=1
pkgdesc="Rack provides minimal, modular and adaptable interface for developing web applications in Ruby."
arch=(any)
url="http://rack.rubyforge.org/"
license=('MIT')
depends=(ruby) # Full dependency information is available in the yaml specification
source=(http://gems.rubyforge.org/gems/rack-$pkgver.gem)
noextract=(rack-$pkgver.gem)
md5sums=('1fbac68b6a9921707b39828c88860728')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" rack-$pkgver.gem
  
  mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
