pkgname=nabi
pkgver=0.99.8
pkgrel=1
pkgdesc="Easy and Powerful GNU XIM for Korean in X Window System"
arch=(i686 x86_64)
url="http://nabi.kldp.net/"
license=('GPL')
depends=('gtk2' 'libhangul>=0.0.12')
source=(http://kldp.net/frs/download.php/5865/${pkgname}-${pkgver}.tar.gz)
md5sums=('f5b8cf5f886c7cc9bebc3407650f9af4')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure -prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install
}
