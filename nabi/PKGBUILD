pkgname=nabi
pkgver=0.99.10
pkgrel=1
pkgdesc="Easy and Powerful GNU XIM for Korean in X Window System"
arch=(i686 x86_64)
url="http://nabi.kldp.net/"
license=('GPL')
depends=('gtk2' 'libhangul>=0.0.12')
source=(http://kldp.net/frs/download.php/6003/nabi-0.99.10.tar.gz)
md5sums=('048829d17fd93934242ff3a6d1352843')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure -prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install
}

