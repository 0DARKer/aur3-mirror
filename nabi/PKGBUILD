pkgname=nabi
pkgver=0.99.7
pkgrel=1
pkgdesc="Easy and Powerfull GNU XIM for Korean in X Window System"
arch=(i686 x86_64)
url="http://nabi.kldp.net"
license=('GPL')
depends=('gtk2' 'libhangul>=0.0.10')
options=('!libtool')
source=(http://kldp.net/frs/download.php/5633/${pkgname}-${pkgver}.tar.gz)
md5sums=('f58a4b4d90a308429a3aff91727f0eee')

build() {
	  cd ${startdir}/src/${pkgname}-${pkgver}
	  ./configure --prefix=/usr
	  make || return 1
	  make DESTDIR=${startdir}/pkg/ install
	 }
