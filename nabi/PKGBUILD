pkgname=nabi
pkgver=0.99.9
pkgrel=1
pkgdesc="Easy and Powerful GNU XIM for Korean in X Window System"
arch=(i686 x86_64)
url="http://nabi.kldp.net/"
license=('GPL')
depends=('gtk2' 'libhangul>=0.0.12')
source=(http://nabi.kldp.net/frs/download.php/5926/nabi-0.99.9.tar.gz)
md5sums=('ec1b0158085c3c6b51a2cb349b3a4971')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure -prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install
}
