# Maintainer: OmeGa <omega at mailoo dot org>

pkgname=cinnamon-theme-glass
pkgver=57
pkgrel=1
pkgdesc="Glass Ubuntu & Glass Mint themes for Cinnamon."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/128"
license=('unknown')
depends=('cinnamon')
source=(http://cinnamon-spices.linuxmint.com/uploads/themes/72WY-5BCC-SGGD.zip)
sha1sums=('3b1388da0484d7158b97c60ae5d65c8a158e0541')

package() {
  find "Glass Mint" -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
  find "Glass Ubuntu" -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}

