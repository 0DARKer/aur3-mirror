# Maintainer: h31 <h31mail@yandex.com>

pkgname=fuse-exfat
pkgver=0.9.3
pkgrel=1
pkgdesc="Free exFAT file system implementation"
arch=('i686' 'x86_64')
url="http://code.google.com/p/exfat/"
license=('GPL3')
depends=('fuse')
makedepends=('scons')
source=(http://exfat.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('42b5e36062cc3f89efd6c8d9b74c0c5d')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	scons || return 1
	mkdir -p ${pkgdir}/sbin/
	DESTDIR=${pkgdir}/sbin scons install || return 1
	cp fsck/exfatck ${pkgdir}/sbin/
}
