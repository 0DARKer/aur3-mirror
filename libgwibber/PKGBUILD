# Maintainer: Gianfranco 'Gianfrix' Micoli <gianfrix.mg@gmail.com>

pkgname=libgwibber
pkgver=0.0.6
pkgrel=1
pkgdesc="A library for desktop integration of social networks supported by Gwibber. Actually needed by indicator-me"
arch=(i686)
url="http://packages.ubuntu.com/source/maverick/libgwibber"
license=('GPL')
groups=('gnome')
depends=('gwibber' 'gtk2')
source=(http://archive.ubuntu.com/ubuntu/pool/main/libg/libgwibber/libgwibber_$pkgver.orig.tar.gz
http://archive.ubuntu.com/ubuntu/pool/main/libg/libgwibber/libgwibber_$pkgver-0ubuntu1.diff.gz)
noextract=()
md5sums=('8c0098a8c62b2593dc6c36da74d3c629'
         'd0f0a0a05821c5951dc62b367b0542fc')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p1 -i ../libgwibber_$pkgver-0ubuntu1.diff
  ./configure --prefix=/usr --enable-introspection=no
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

