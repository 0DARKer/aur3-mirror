pkgname="hexinject"
pkgver=1.1
pkgrel=1
pkgdesc="a very versatile packet injector and sniffer, that provide a command-line framework for raw network access."
arch=('i686' 'x86_64')
url="http://hexinject.sourceforge.net"
license=('BSD')
depends=('libpcap')
#provides=("hexinject")
source=("http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz"
		"COPYING")
md5sums=('8542411cc5d31101e2a8f56b73dd6fa1'
		'4526e0bd0583aea0a549417a2f1d966b')
sha256sums=('050852f89ea501c7bad768a694f8fd2d5f0c3de68da82647a1cb7aeb68e96e27'
		'cd5a49c6868c68e121b773f8c0f293affdde0b55009f43372b5a92efcd1520f7')

build() {
	cd "$srcdir/$pkgname"

	msg "Building..."
	make

	msg "Installing..."
	install -D -m755 $srcdir/$pkgname/hexinject $pkgdir/bin/$pkgname
	install -D -m755 $srcdir/COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}
