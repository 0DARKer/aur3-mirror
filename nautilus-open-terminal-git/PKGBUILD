# Contributor: Sausageandeggs <s_stoakley at hotmail.co.uk>

pkgname=nautilus-open-terminal-git
pkgver=20100807
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64')
url="http://www.kirya.net/projects/"
license=('GPL')
groups=()
depends=('nautilus' 'intltool' 'gettext')
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()

_gitroot="git://git.kirya.net/git/nautilus-open-terminal.git"
_gitname="nautilus-open-terminal"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

#  ./autogen.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
} 
