
pkgname=libcompizconfig-dev
pkgver=0.9.5.0
pkgrel=2
pkgdesc="Compiz configuration system library"
arch=('i686' 'x86_64')
url="http://compiz.org"
license=('GPL')
provides=('libcompizconfig')
conflicts=('libcompizconfig')
depends=('compiz-core-dev' 'libxml2' 'protobuf')
makedepends=('intltool' 'pkgconfig' 'cmake')
source=("http://releases.compiz.org/$pkgver/libcompizconfig-${pkgver}.tar.bz2")
sha1sums=('ee7872abbb14c63b698c50d26f16eb815d452561')

build()
{
	cd "libcompizconfig-${pkgver}"
	[[ -d build ]] || mkdir build
	cd build
	env PKG_CONFIG_PATH="/usr/lib/pkgconfig:$PKG_CONFIG_PATH" \
		cmake .. -DCMAKE_BUILD_TYPE="Release" -DCMAKE_INSTALL_PREFIX=/usr -DCOMPIZ_DESTDIR="${pkgdir}"
	make
	make install
	make findcompizconfig_install
}
