
pkgname=libcompizconfig-dev
pkgver=0.9.4
pkgrel=1
pkgdesc="Compiz configuration system library"
arch=('i686' 'x86_64')
url="http://compiz.org"
license=('GPL')
provides=('libcompizconfig')
conflicts=('libcompizconfig')
depends=('compiz-core-dev' 'libxml2')
makedepends=('intltool' 'pkgconfig' 'cmake')
options=('!emptydirs' '!libtool')
source=("http://releases.compiz.org/$pkgver/compiz-libcompizconfig-${pkgver}.tar.gz")
sha1sums=('e1becfbf8e1b3d164e63651dd15ccd77f6da9207')

build()
{
	cd "libcompizconfig"
	[[ -d build ]] || mkdir build
	cd build
	env PKG_CONFIG_PATH="/usr/lib/pkgconfig:$PKG_CONFIG_PATH"        \
		cmake .. -DCMAKE_INSTALL_PATH=/usr -DCMAKE_INSTALL_PREFIX=/usr \
                         -DCOMPIZ_PLUGIN_INSTALL_TYPE=compiz -DCOMPIZ_DESTDIR="${pkgdir}"
	make
	make install
	make findcompizconfig_install
}
