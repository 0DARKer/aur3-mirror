#Contributor: Bob Finch <w9ya@qrparci.net>

pkgname=qsstv
pkgver=5.3c
pkgrel=2
pkgdesc="Radio Slow-Scan TV for qt"
url="http://users.telenet.be/on4qz/qsstv/index.html"
depends=('qt3')
source=(http://users.telenet.be/on4qz/$pkgname/download/$pkgname-$pkgver.tar.gz
        $pkgname.desktop
        $pkgname)
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('100ddd94beb190c1b3f365896dd716eb'
         '3da47205278e785a7b13fdffb09aec83'
         'cebcb199cc591945c087937877fb81ce')
       
build() {
  cd $startdir/src/$pkgname-$pkgver

  sed -i -e "s:local/::" qsstv/configtable.cpp

  ./configure --prefix=/usr --with-qt-dir=/opt/qt
  make CXXFLAGS="${CXXFLAGS}" || return 1
  make DESTDIR=$startdir/pkg install
  
  cd $startdir/src
  mkdir -p $startdir/pkg/usr/share/applications
  install -m644 *.desktop $startdir/pkg/usr/share/applications/
  
  install -m755 $pkgname $startdir/pkg/usr/share/$pkgname/
}
