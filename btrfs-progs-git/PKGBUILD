# Contributor: Miroslaw "firestarter" Wojtylak mwojtylak@gmail.com
# Based on PKGBUILD from Dan Zwell <dzwell@zwell.net>

pkgname=btrfs-progs-git
pkgver=20110814
pkgrel=1
pkgdesc="Btrfs filesystem utilities"
arch=("i686" "x86_64")
url="http://btrfs.wiki.kernel.org/index.php/Main_Page"
license=('GPL')
depends=('e2fsprogs')
makedepends=('git')
provides=('btrfs-progs')
conflicts=('btrfs-progs-unstable')
install="btrfs-progs-git.install"

_gitroot="git://git.kernel.org/pub/scm/linux/kernel/git/mason/btrfs-progs-unstable.git"
_gitname="btrfs-progs-unstable"

build() {
  msg "Connecting to GIT server...."

  if [[ -d $_gitname ]]; then
    cd $_gitname && git pull origin
    cd ..
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
  
  rm -rf ${_gitname}-build
  cp -a $_gitname ${_gitname}-build
  cd ${_gitname}-build
  sed -i "s|-Werror|-Wno-error|" Makefile
  make  all btrfs-zero-log convert 
echo "1sr make"
}
package() {
  cd $_gitname-build
# mkdir -p $pkgdir/usr/share/man
  make  prefix=$pkgdir/usr bindir=$pkgdir/sbin install
  install -Dm644 INSTALL "$pkgdir/usr/share/doc/btrfs/README"
#  install -Dm755 $_gitname-build/btrfs-zero-log* $pkgdir/usr/sbin
  mv $pkgdir/usr/man $pkgdir/usr/share/
  mv btrfs-zero-log $pkgdir/sbin
}

# vim:set ts=2 sw=2 et:
