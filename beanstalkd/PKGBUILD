# Maintainer: Charles Melbye <charlie@pushyapp.com>
pkgname=beanstalkd
pkgver=1.4.2
pkgrel=1
pkgdesc="fast, distributed, in-memory workqueue service."
arch=("i686", "x86_64")
url="http://xph.us/software/beanstalkd/"
license=('GPL3')
depends=('libevent')
#makedepends=()
source=(http://xph.us/dist/$pkgname/$pkgname-$pkgver.tar.gz \
        $pkgname.init \
        $pkgname.conf)
md5sums=('848ecf1a040e018cb0ee10a203b62896'
         'ea02d492747bbd000c8ef8a8c6d97bfa'
         'cedec10a36695379d867b6315f69ed66')
build() {
	cd "$srcdir/$pkgname-$pkgver"
	
	./configure --prefix=/usr
	make || return 1
	make DESTDIR="$pkgdir/" install
	
	install -D -m0755 ${srcdir}/$pkgname.init ${pkgdir}/etc/rc.d/$pkgname || return 1
	install -D -m0644 ${srcdir}/$pkgname.conf ${pkgdir}/etc/conf.d/$pkgname || return 1
}
