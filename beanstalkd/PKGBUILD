# Maintainer: Stephen Jackson <scj7t4@mst.edu>
pkgname=beanstalkd
pkgver=1.5
pkgrel=1
pkgdesc="fast, distributed, in-memory workqueue service."
arch=("i686" "x86_64")
url="http://xph.us/software/beanstalkd/"
license=('GPL3')
depends=('libevent')
#makedepends=()
source=(https://github.com/downloads/kr/$pkgname/$pkgname-$pkgver.tar.gz \
        $pkgname.init \
        $pkgname.conf)
md5sums=('d75a0a93e6b80b57fea61136f6da57eb'
         'ea02d492747bbd000c8ef8a8c6d97bfa'
         'cedec10a36695379d867b6315f69ed66')
build() {
	cd "$srcdir/$pkgname-$pkgver"

    make install PREFIX="$pkgdir/usr"
	
	install -D -m0755 ${srcdir}/$pkgname.init ${pkgdir}/etc/rc.d/$pkgname || return 1
	install -D -m0644 ${srcdir}/$pkgname.conf ${pkgdir}/etc/conf.d/$pkgname || return 1
}
