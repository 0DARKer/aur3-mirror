# Maintainer: Christian Sturm <reezer@reezer.org>
pkgname=perl-bdb
pkgver=1.88
pkgrel=1
pkgdesc="Asynchronous Berkeley DB access"
arch=(any)
url="http://metacpan.org/release/BDB"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.12.0' perl-common-sense)
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/BDB-$pkgver.tar.gz)
md5sums=('64ef414a55a49edf78302a80b3871b94')

build() {
  cd "$srcdir/BDB-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1
}

# vim:set ts=2 sw=2 et:
