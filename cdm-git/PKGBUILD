# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=cdm-git
pkgver=20110102
pkgrel=1
pkgdesc="The Console Display Manager"
arch=('any')
url="http://ghost1227.com/"
license=('GPL')
makedepends=('git')
depends=('dialog' 'xorg-utils')
provides=('cdm')
conflicts=('cdm')
backup=(etc/cdmrc)

_gitroot="git://github.com/ghost1227/cdm.git"
_gitname="cdm"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf ${srcdir}/${_gitname}-build
  git clone ${srcdir}/${_gitname} ${srcdir}/${_gitname}-build
  cd ${srcdir}/${_gitname}-build
}

package() {
	cd ${srcdir}/${_gitname}-build/src

	mkdir -p ${pkgdir}/usr/{bin,share/cdm}
	install -m755 cdm ${pkgdir}/usr/bin/
	install -Dm644 cdmrc ${pkgdir}/etc/cdmrc
	install -m644 xinitrc* ${pkgdir}/usr/share/cdm/
	install -Dm755 zzz-cdm-profile.sh \
		${pkgdir}/etc/profile.d/zzz-cdm-profile.sh
	cp -Rf themes ${pkgdir}/usr/share/cdm/
}
