pkgname=flash
pkgver=0.5
_pkgopt=EN-beta

pkgrel=1
pkgdesc="Flash: downloads flash videos in the /tmp old way (before adobe flash v10.2)"
url="http://kike.xtreemhost.com/flash/index.html"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('bash' 'bzip2' 'tar')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
#install=${pkgname}.install
source=("http://kike.xtreemhost.com/files/pub/flash/${pkgname}-${pkgver}-${_pkgopt}.tar.bz2")

# I did them in Sat 06/19/11
md5sums=('efb0ac92ed165b1de184c42f221d3eed')

build() {
  cd ${srcdir}
  tar xvf ${pkgname}-${pkgver}-${_pkgopt}.tar.bz2
  cp -rf usr ${pkgdir}
  cp -rf opt ${pkgdir}
}
