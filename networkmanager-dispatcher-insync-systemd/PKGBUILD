# Maintainer: Robert Orzanna <orschiro@gmail.com>
pkgname=networkmanager-dispatcher-insync-systemd
pkgver=1.0
pkgrel=1
pkgdesc="Dispatcher Script for Insync using a systemd service file."
arch=('any')
license=('GPL')
url="https://github.com/orschiro/Linux/Packages"
depends=('networkmanager' 'insync')
source=('10-insync' 'insync.service')
md5sums=('9d337c98eee04d68e47812cd5d0d8471'
		 '66150b5941a03d0190266fe51e350949')

package() {
  install -dm755 "${pkgdir}/etc/NetworkManager/dispatcher.d/"
  install -m700 "$srcdir/10-insync" "${pkgdir}/etc/NetworkManager/dispatcher.d/10-insync"
  install -Dm644 "$srcdir/insync.service" "$pkgdir/usr/lib/systemd/system/insync@.service"
}