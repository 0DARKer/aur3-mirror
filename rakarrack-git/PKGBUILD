# Contributor: Renato Budinich <rennabh ET gmail DOP com> 
pkgname=rakarrack-git
pkgver=20100226
pkgrel=1
pkgdesc="Versatile guitar multi-effects processor - git version"
arch=('x86_64' 'i686')
url="http://rakarrack.sourceforge.net/"
license=('GPL')
depends=('alsa-utils' 'jack' 'fltk' 'libxpm')
makedepends=('git')
conflicts=('rakarrack')

_gitroot="git://rakarrack.git.sourceforge.net/gitroot/rakarrack/rakarrack"
_gitname="rakarrack"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  ./autogen.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
} 
