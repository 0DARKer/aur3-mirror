pkgname=atool-git
pkgver=5.c7a0377
pkgrel=1
pkgdesc="taylorchu's atool repo (git version)"
arch=('any')
url="http://github.com/taylorchu/atool"
license=('GPL2')
depends=('bash' 'atool')
makedepends=('git')
conflicts=()
provides=()

source=("git://github.com/taylorchu/atool.git")
md5sums=('SKIP')
_gitname="atool"

pkgver() {
    cd "$srcdir/$_gitname"
    echo "$(git shortlog | grep -c '\s\+').$(git describe --always)"
}

build() {
    cd "$srcdir/$_gitname"
    make
}

package() {
    cd "$srcdir/$_gitname"
    make PREFIX=/usr DESTDIR="$pkgdir" install
}

