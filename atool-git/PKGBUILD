# Maintainer: tailinchu <use_my_id at gmail dot com>

pkgname=atool-git
pkgver=20130404
pkgrel=22
pkgdesc="taylorchu's atool repo (git version)"
arch=('any')
url="http://github.com/taylorchu/atool"
license=('GPL2')
depends=('bash' 'atool')
makedepends=('git')
conflicts=()
provides=()
source=("git://github.com/taylorchu/atool.git")
md5sums=('SKIP')

_gitroot="atool"

pkgver () {
    cd "$srcdir/$_gitroot"
    echo "$(git rev-list --count HEAD).$(git describe --always)"
}

package() {
    cd "$srcdir/$_gitroot"
    make PREFIX=/usr DESTDIR="$pkgdir" install
}

