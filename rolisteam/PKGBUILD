# Contributor: Eric Forgeot < http://anamnese.online.fr >
pkgname=rolisteam
pkgver=1.5.0
pkgrel=1
pkgdesc="An online role game playing software."
arch=(i686 x86_64)
url="http://www.rolisteam.org"
license=('GPL')
depends=('qt' 'phonon')
source=(http://rolisteam.googlecode.com/files/${pkgname}_${pkgver}.tar.gz)
md5sums=('dbc27fef431a5892923d90fd1f683838')

build() {
	# start compilation
	cd $srcdir/${pkgname}/traduction
	lrelease *.ts
	cd $srcdir/${pkgname} 
	qmake 
	make || return 1
  
	# prepare folders for installation
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/share/applications
	# mkdir -p $pkgdir/usr/share/pixmaps

	cp $srcdir/${pkgname}/bin/rolisteam  $pkgdir/usr/bin/
	
	install -D -m644 ../../${pkgname}.desktop $pkgdir/usr/share/applications/${pkgname}.desktop
	
} 

