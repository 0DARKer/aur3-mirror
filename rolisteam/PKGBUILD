# Contributor: Eric Forgeot < http://anamnese.online.fr >
pkgname=rolisteam
pkgver=1.0.2
pkgrel=2
pkgdesc="An online role game playing software."
arch=(i686 x86_64)
url="http://www.rolisteam.org"
license=('GPL')
depends=('qt' 'phonon')
source=(http://rolisteam.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('b982d454918f13db559d20b88ed907fe')

build() {
	# start compilation
	cd $srcdir/${pkgname}-${pkgver}
	qmake 
	make || return 1
  
	# prepare folders for installation
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/share/applications
	# mkdir -p $pkgdir/usr/share/pixmaps

	cp $srcdir/${pkgname}-${pkgver}/bin/rolisteam  $pkgdir/usr/bin/
	
	install -D -m644 ../../${pkgname}.desktop $pkgdir/usr/share/applications/${pkgname}.desktop
	
} 

