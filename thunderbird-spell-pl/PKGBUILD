# Maintainer: kfgz <kfgz at interia dot pl>

pkgname=thunderbird-spell-pl
pkgver=20101210
pkgrel=1
_tbver=3.1
pkgdesc="Polish spellchecker dictionary for Thunderbird"
arch=('i686' 'x86_64')
url="http://www.sjp.pl/slownik/en/"
license=('GPL')
depends=('thunderbird')
source=(http://sjp.pl/slownik/ort/sjp-myspell-pl-${pkgver}.zip)
md5sums=('f252d1c8720ea17e505cfec59b77e9b5')

build(){
  cd ${srcdir}
  bsdtar -xf pl_PL.zip
  install -dm755 ${pkgdir}/usr/lib/thunderbird-${_tbver}/dictionaries
  install -m644 pl_PL.aff ${pkgdir}/usr/lib/thunderbird-${_tbver}/dictionaries
  install -m644 pl_PL.dic ${pkgdir}/usr/lib/thunderbird-${_tbver}/dictionaries
}
