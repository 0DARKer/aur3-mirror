pkgver=3.2.1
_pkgver=3.2.1

pkgrel=1
_lang=el
_srcurl=http://go-oo.mirrorbrain.org/stable
_intver=${pkgver}-9505
pkgdesc="Go-OpenOffice Greek language files"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://go-oo.org/discover/"
