# Autor:  Alexey Korop akorop@ukr.net>

pkgname=s1kls
pkgver=1.00
pkgrel=1
pkgdesc='Simple X11 1-key Keyboard layout switcher'
arch=('i686' 'x86_64')
url='http://sourceforge.net/projects/s1kls'
license=('GPL')
depends=('libx11')
source=(http://sourceforge.net/projects/s1kls/files/s1kls-100.tgz)
md5sums=('71870d5f87c1bfde9f03b2725953cf69')

prepare() {
  mv $pkgname $pkgname-$pkgver
  cd $pkgname-$pkgver
  rm -rf i686 x86_64 readme.txt
}

build() {
  mkdir "$pkgdir/usr"
  mkdir "$pkgdir/usr/bin"
  cd $pkgname-$pkgver
  gcc -lX11 s1kls.c -o "$pkgdir/usr/bin/s1kls"
}
