# Maintainer: Lucas Tanure <tanure@linux.com>

pkgname=gcc-linaro-arm-linux-gnueabihf
_relver=4.9
_reldate=2014.08
_relverdate=${_relver}-${_reldate}
pkgver=${_relver}_${_reldate}
pkgrel=3
pkgdesc="Linux binaries for the ARMv7 Linux cross-toolchain (Compiled by Linaro)"
arch=('i686' 'x86_64')
url="https://wiki.linaro.org/WorkingGroups/ToolChain"
license=('GPL' 'LGPL')
depends=()
optdepends=()
provides=("arm-linux-gnueabihf-gcc")
options=(!strip staticlibs)
install=$pkgname.install
source=("http://releases.linaro.org/latest/components/toolchain/binaries/${pkgname}-${_relverdate}_linux.tar.xz")
md5sums=('296d51429700345b1954d3b4fce68e36')

package () {
	mkdir -p "$pkgdir/opt"
	mv "$srcdir/${pkgname}-${_relverdate}_linux" "$pkgdir/opt/${pkgname}"
}
