# Maintainer: Colin Duquesnoy <colin.duquesnoy@gmail.com>
pkgname=mellowplayer
pkgver=1.0.0beta
_commit=63bc38d
pkgrel=1
pkgdesc="Open source and cross-platform desktop application that runs web-based music streaming
         services in its own window and provides integration with your desktop, specifically crafted for KDE Sc/Plasma 5"
url='https://github.com/ColinDuquesnoy/MellowPlayer'
license=('GPL')
arch=('any')
depends=('qt5-base' 'qt5-webkit')
makedepends=('qt5-tools')
source=("https://github.com/ColinDuquesnoy/MellowPlayer/tarball/master/MellowPlayer-${pkgver}.tar.gz")
md5sums=('3d089f4601c4d3da0fc303b237a8c57b')

build() {
  cd $srcdir/ColinDuquesnoy-MellowPlayer-${_commit}

  qmake-qt5
  make
}

package() {
  cd $srcdir/ColinDuquesnoy-MellowPlayer-${_commit}

  make INSTALL_ROOT=${pkgdir} install
}