# Maintainer: Shanto
# Contributor: vbPadre <vbpadre@gmail.com>

pkgname=gam
pkgver=1.8
pkgrel=1
holdver=$pkgver
pkgdesc="Google Apps Manager"
arch=('any')
url="http://code.google.com/p/google-apps-manager/"
license=('LGPL')
depends=('python2')
makedepends=('unzip')
optdepends=()
provides=('gam')
source=('gam.zip::http://google-apps-manager.googlecode.com/files/gam-${pkgver}-python-src.zip')
md5sums=('e2d3d4230a214606c4a611fc2786e44d')

build() {
	rm -f $srcdir/gam.zip
}

package() {
	install -d ${pkgdir}/opt/${pkgname}
	install -d ${pkgdir}/usr/bin
	cp -af $srcdir/* ${pkgdir}/opt/${pkgname}/
	echo "python2 /opt/${pkgname}/gam.py \"\$@\"" > ${pkgdir}/usr/bin/gam
	chmod 0755 ${pkgdir}/usr/bin/gam
}
