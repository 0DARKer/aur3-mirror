# Contributor: troxy <aurpkg.5.troxor at spamgourmet dot com>
pkgname=perl-time-period
pkgver=1.20
pkgrel=1
pkgdesc="Perl module to deal with time periods"
url="http://search.cpan.org/~pryan/Period-1.20/Period.pm"
depends=(perl)
license="GPL"
options=('!emptydirs')
arch=('i686' 'x86_64')
source=(http://search.cpan.org/CPAN/authors/id/P/PR/PRYAN/Period-1.20.tar.gz) 
md5sums=('63b073af8ec96e7fa48801cd6fcccdd1')

build() {
  cd  $startdir/src/Period-$pkgver
  eval `perl -V:archname`
  /usr/bin/perl Makefile.PL \
      INSTALLARCHLIB=/usr/lib/perl5/current/${archname} \
      INSTALLSITELIB=/usr/lib/perl5/site_perl/current \
      INSTALLSITEARCH=/usr/lib/perl5/site_perl/current/${archname}
  /usr/bin/make || return 1
  /usr/bin/make DESTDIR=$startdir/pkg install
  /usr/bin/find $startdir/pkg -name '.packlist' -exec rm  '{}' \;
  /usr/bin/find $startdir/pkg -name '*.pod' -exec rm  '{}' \;
}
