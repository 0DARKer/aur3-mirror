pkgname="leisure-suit-larry"
pkgver="1.0"
pkgrel=2
pkgdesc="A classic game from Abandonia, played in DosBox."
url='http://www.abandonia.com/en/games/120/Leisure+Suit+Larry+1+-+in+the+Land+of+the+Lounge+Lizards.html'
arch=('i686' 'x86_64')
license=('custom-freeware' 'Abandonware')
install='larry1.install'
depends=('dosbox')
source=('http://files.abandonia.com/download.php?game=Leisure+Suit+Larry+1+-+in+the+Land+of+the+Lounge+Lizards&secure=413c4e541e1210e8be652772446dc02f&td=1297708983')
md5sums=('73161dc388fdcbb9c4ff2155d840a0db')
_pkgabbrev="Larry1"
_exe="LL.COM"

build() {
	mkdir -p -m755 "$pkgdir/opt/" || return 1
	mkdir -p -m755 "$pkgdir/opt/abandonia" || return 1
	mkdir -p -m755 "$pkgdir/opt/abandonia/$_pkgabbrev" || return 1
	rm -f $srcdir/download* || return 1
	cp -ar $srcdir/Leisure\ Suit\ Larry\ 1.1987/* "$pkgdir/opt/abandonia/$_pkgabbrev" || return 1

	#ok, let's use a script to start the game

	mkdir -p -m755 /$pkgdir/usr/bin/ || return 1

	printf "#!${SHELL}
if whereis dosbox>/dev/null 2>&1;
	then
		dosbox /opt/abandonia/$_pkgabbrev/$_exe
	else
		echo '==> Please get sure to have dosbox installed and have it in your PATH array.'
fi
return \$?" >> /$pkgdir/usr/bin/$_pkgabbrev.sh || return 1
	chmod +x /$pkgdir/usr/bin/$_pkgabbrev.sh || return 1
	ln -s $_pkgabbrev.sh /$pkgdir/usr/bin/$_pkgabbrev || return 1
} 
