# Maintainer: Dmitry Lavnikevich <haff@midgard.by>

pkgname=extopts
pkgver=1.0.0
pkgrel=1
pkgdesc="Command line interface library"
url="https://github.com/githaff/extopts"
license=('BSD')
arch=('i686' 'x86_64')
makedepends=('cmake')
source=('https://github.com/githaff/extopts/archive/v1.0.0.tar.gz')
md5sums=('1ff3d5e764aa7e396ac8f6efb8992341')


build() {
  cd ${pkgname}-${pkgver}
  
  echo "v$pkgver" > .version

  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package(){
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" install
}
