#	henning mueller <henning@orgizm.net>

pkgname=system-config-lvm
pkgver=1.1.15
pkgrel=1
pkgdesc="A utility for graphical configuration of Logical Volumes"
arch=(i686 x86_64)
url="http://fedoraproject.org/wiki/SystemConfig/lvm"
license=(GPL)
depends=(gtk2 gnome-python pygtk lvm2 gksu)
makedepends=(rpmextract automake gettext intltool)
source=(
	ftp://download.fedora.redhat.com/pub/fedora/linux/releases/14/Everything/source/SRPMS/$pkgname-$pkgver-1.fc14.src.rpm
	desktop-file.patch
)
md5sums=(
	6972eaf566b35b126931590616f00aec
	7a70b7f24f6ae99981dcb0461f584705
)

build() {
	cd $srcdir
	rpmextract.sh $pkgname*.src.rpm
	tar xzf $pkgname*.tar.gz
	rm *.tar.gz *.spec

	cd $pkgname*
	patch -p0 < ../desktop-file.patch
	./configure --prefix=/usr --sysconfdir=/etc
	make
}

package() {
	cd $srcdir/$pkgname*
	make DESTDIR="$pkgdir" install
}
