arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-any-moose>=0.04')
makedepends=()
url='http://search.cpan.org/dist/GnuPG-Interface'
source=('http://search.cpan.org/CPAN/authors/id/J/JE/JESSE/GnuPG-Interface-0.44.tar.gz')
