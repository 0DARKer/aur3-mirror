# Contributor: Vladimir Chizhov <jagoterr@gmail.com>
pkgname=decibel-audio-player
pkgver=1.08
pkgrel=1
pkgdesc="Decibel audio player for GNOME desktop"
arch=(i686 x86_64)
license=('GPL')
url="http://decibel.silent-blade.org/"
depends=(python2 gstreamer0.10-python python-notify pygtk dbus-python mutagen)
source=(http://decibel.silent-blade.org/uploads/Main/decibel-audio-player-$pkgver.tar.gz
        'decibel-audio-player-python2.patch'
        'decibel-audio-player-remote-python2.patch')
#install=()
md5sums=('e8ebaf819c198ff9951903e7c4056aef'
         '3b4705f68e39ef8e796a7f02119d16d2'
         'fb0de710b536791d2e5105627ca7535d')

build() {
   cd $startdir/src/decibel-audio-player-$pkgver
   patch -p0 < $srcdir/decibel-audio-player-python2.patch
   patch -p0 < $srcdir/decibel-audio-player-remote-python2.patch
   make prefix=/usr DESTDIR=$startdir/pkg install || return 1
}

