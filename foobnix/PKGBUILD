# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=foobnix
pkgver=2.6.10q
pkgrel=1
pkgdesc="Music Player written in Python, GTK+ and Glade"
arch=('any')
url="http://www.foobnix.com/welcome?lang=en"
license=('GPL3')
depends=('gstreamer0.10-ffmpeg' 'gstreamer0.10-good-plugins' 'gstreamer0.10-python' 'gstreamer0.10-ugly-plugins' 'mutagen' 'pygtk' 'python2-chardet' 'python2-dbus' 'python2-keybinder2' 'python2-simplejson')
makedepends=('gettext')
optdepends=('pywebkitgtk: vkontakte')
conflicts=('foobnix-git')
source=(https://launchpad.net/~foobnix-team/+archive/foobnix-player/+files/foobnix_${pkgver}.tar.gz)
md5sums=('8d0ea4cd5ba9bb69fe46590aed27b554')


build() {
  cd $srcdir/$pkgname*

  python2 setup.py install --root=$pkgdir --optimize=1
}