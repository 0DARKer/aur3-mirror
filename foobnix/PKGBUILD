# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=foobnix
pkgver=2.5.32o
pkgrel=1
pkgdesc="Music Player written in Python, GTK+ and Glade"
arch='any'
url="http://www.foobnix.com/welcome?lang=en"
license='GPL3'
depends=('dbus-python' 'gstreamer0.10-ffmpeg' 'gstreamer0.10-good-plugins' 'gstreamer0.10-python' 'gstreamer0.10-ugly-plugins' 'mutagen' 'pygtk' 'python-keybinder' 'python-simplejson' 'python2-chardet' 'python2-distribute')
makedepends=('gettext')
conflicts=('foobnix-git')
source=(https://launchpad.net/~foobnix-player/+archive/foobnix/+files/foobnix_${pkgver}.tar.gz)
md5sums='2aa0d47265b22f0048d09aa8074da940'

build() {
  cd $srcdir/$pkgname*

  python2 setup.py install --root=$pkgdir --optimize=1
}