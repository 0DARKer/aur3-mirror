# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=foobnix
pkgver=2.6.09q
pkgrel=3
pkgdesc="Music Player written in Python, GTK+ and Glade"
arch=('any')
url="http://www.foobnix.com/welcome?lang=en"
license=('GPL3')
depends=('gstreamer0.10-ffmpeg' 'gstreamer0.10-good-plugins' 'gstreamer0.10-python' 'gstreamer0.10-ugly-plugins' 'mutagen' 'pygtk' 'python-simplejson' 'python2-chardet' 'python2-dbus' 'python2-distribute' 'python2-keybinder2')
makedepends=('gettext')
optdepends=('pywebkitgtk: vkontakte')
conflicts=('foobnix-git')
source=(https://launchpad.net/~foobnix-team/+archive/foobnix-player/+files/foobnix_${pkgver}.tar.gz)
md5sums=('78565b602e177d072b552d8d3f223bf3')


build() {
  cd $srcdir/$pkgname*

  python2 setup.py install --root=$pkgdir --optimize=1
}