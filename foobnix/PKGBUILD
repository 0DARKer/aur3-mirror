# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=foobnix
pkgver=0.2.3
pkgrel=1
pkgdesc="Music Player written in Python, GTK+ and Glade"
arch=('i686' 'x86_64')
url="http://www.foobnix.com/about?lang=en"
license=('GPL3')
depends=('gstreamer0.10-ffmpeg' 'gstreamer0.10-good-plugins' 'gstreamer0.10-python' 'gstreamer0.10-ugly-plugins' 'mutagen' 'pygtk' 'python-keybinder' 'python-simplejson' 'python2-chardet' 'python2-distribute')
makedepends=('gettext')
conflicts=('foobnix-git')
source=(https://launchpad.net/~foobnix-player/+archive/foobnix/+files/foobnix_${pkgver}-${pkgrel}l.tar.gz)
md5sums=('aa9bb6eb6575838d54ab7243415658f2')

build() {
  cd $srcdir/${pkgname}_${pkgver}-$pkgrel

  export PYTHON="/usr/bin/python2"
  mkdir -p $pkgdir/usr/share/foobnix
  python2 setup.py install --root=$pkgdir/ --optimize=1
}