# Contributor: Jonathan Serafini <delerious010@gmail.com>

pkgname=gnomint
pkgver=1.1.0
pkgrel=1
pkgdesc='A x509 Certification Authority management tool for GTK/Gnome'
arch=(i686 x86_64)
url="http://gnomint.sourceforge.net"
license=('GPL')
depends=('intltool>=0.23','sqlite3','libgnomeui')

source=(http://downloads.sourceforge.net/project/gnomint/gnomint/${pkgver}/gnomint-${pkgver}.tar.gz)

md5sums=('0b674fd6d589d23bba69b6f375c5ba16')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --with-mantype=man --mandir=/usr/man 
  make || return 1
  make DESTDIR=$startdir/pkg install
}
