# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=baretorrent
pkgver=0.3.0
pkgrel=1
pkgdesc="Portable bittorrent client with extensions based on libtorrent-rasterbar library."
arch=('i686' 'x86_64')
url="http://baretorrent.sourceforge.net"
license=('custom')
depends=('gtk2' 'libpng12')

if [ "${CARCH}" = 'x86_64' ]; then
  source=(http://prdownloads.sourceforge.net/$pkgname/$pkgname-$pkgver-ubuntu-x64.7z
          $pkgname
          $pkgname.desktop)
  md5sums=('bede9360033a19643f56e0f36c096a17'
           'b1b17ee3a2e34be6a4155bc9a22a9a42'
           '14ab75d7260235b264d9730ccd0e2cca')
elif  [ "${CARCH}" = 'i686' ]; then 
  source=(http://prdownloads.sourceforge.net/$pkgname/$pkgname-$pkgver-ubuntu-x86.7z
          $pkgname
          $pkgname.desktop)
  md5sums=('3380dc5c1f9ed1406e840a6a097c0af0'
           'b1b17ee3a2e34be6a4155bc9a22a9a42'
           '14ab75d7260235b264d9730ccd0e2cca')
fi


package() {
   mkdir -p $pkgdir/usr/share/$pkgname
   cp -rf $srcdir/$pkgname-$pkgver-ubuntu*/* $pkgdir/usr/share/$pkgname

   # Start file
   install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
   
   # Desktop icon
   install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
   cd $pkgdir/usr/share/$pkgname
   install -Dm644 res/icon_512.png $pkgdir/usr/share/pixmaps/$pkgname.png
   
   # License
   install -Dm644 COPYING $pkgdir/usr/share/licences/$pkgname/LICENSE

   # Remove unnecessary stuff
   rm python33.zip
}
