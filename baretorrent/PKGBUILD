# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=baretorrent
pkgver=0.4.1
pkgrel=1
pkgdesc="Portable bittorrent client with extensions based on libtorrent-rasterbar library."
arch=('i686' 'x86_64')
url="http://baretorrent.org"
license=('custom')
depends=('gtk2' 'libpng12')

if [ "${CARCH}" = 'x86_64' ]; then
  source=(https://launchpad.net/baretorrent/trunk/0.4.1-alpha/+download/$pkgname-$pkgver-ubuntu-x64.7z
          $pkgname
          $pkgname.desktop
          COPYING)
md5sums=('49d1680af242044bcbbe7df0400d2eb7'
         '5642247cdca4c3d97ae932ff4cb79d07'
         '14ab75d7260235b264d9730ccd0e2cca'
         '4dafde7a3adefa5906849d4173ff109b')
elif  [ "${CARCH}" = 'i686' ]; then 
  source=(https://launchpad.net/baretorrent/trunk/0.4.1-alpha/+download/$pkgname-$pkgver-ubuntu-x86.7z
          $pkgname
          $pkgname.desktop
          COPYING)
md5sums=('747910016a4e217317b5b72fb3a22429'
         '5642247cdca4c3d97ae932ff4cb79d07'
         '14ab75d7260235b264d9730ccd0e2cca'
         '4dafde7a3adefa5906849d4173ff109b')
fi


package() {

   # License
   install -Dm644 COPYING $pkgdir/usr/share/licences/$pkgname/LICENSE

   mkdir -p $pkgdir/usr/share/$pkgname
   cp -rf $srcdir/$pkgname-$pkgver-ubuntu*/* $pkgdir/usr/share/$pkgname

   # Start file
   install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
   
   # Desktop icon
   install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
   cd $pkgdir/usr/share/$pkgname
   install -Dm644 res/icon_512.png $pkgdir/usr/share/pixmaps/$pkgname.png   
}