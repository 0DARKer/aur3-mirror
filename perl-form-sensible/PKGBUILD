pkgname='perl-form-sensible'
pkgver='0.20001'
pkgrel='1'
pkgdesc="Form UI module with multiple backends"
arch=('any')
url='http://search.cpan.org/dist/Form-Sensible'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-class-mop' 'perl-file-sharedir' 'perl-moose' 'perl-namespace-autoclean' 'perl-template-toolkit')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/J/JA/JAYK/Form-Sensible-0.20001.tar.gz')
md5sums=('d8dc05ee2ba85a90b29fa884d0858f04')

build() {
  DIST_DIR="${srcdir}/Form-Sensible-0.20001"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}
