pkgname=spring-nota
pkgver=1.634
_pkgver=1634
pkgrel=2
pkgdesc="'Not OTA' is a rethink of the Total Annihilation universe but completely different gameplay from Original TA that uses the Spring engine."
arch=(any)
url=('http://springrts.com/wiki/NOTA')
license=('custom')
depends=('spring')
source=(http://springfiles.planet-wars.eu/5/NOTA${_pkgver}.sdz)
md5sums=('c59f936460713566811f3b7f339e9ef7')

build() {
	mkdir -p $pkgdir/usr/share/spring/mods
	install -m 644 -t $pkgdir/usr/share/spring/mods $srcdir/NOTA${_pkgver}.sdz
}

