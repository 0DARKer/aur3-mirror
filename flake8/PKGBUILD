# Contributor: Allen Li <darkfeline at abagofapples.com>

pkgname=flake8
pkgver=1.7.0
pkgrel=1
epoch=1
pkgdesc="Mixes pyflake and pep8 check, with an inline deactivation feature."
arch=('any')
url="http://bitbucket.org/tarek/flake8"
license=('MIT')
depends=('python')
provides=('flake8')
replaces=('flake8-python3')
conflicts=('flake8-python3')
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/f/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('a7830d1a6c23e889bc1fcaa4a87f53bd')
install=flake8.install

build() {
    cd "$srcdir/$pkgname-$pkgver"
    python setup.py install --root=$pkgdir/ --prefix=/usr --optimize=1
}

package() {
    cd "$srcdir/$pkgname-$pkgver"

    install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

