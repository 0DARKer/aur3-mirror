#
pkgname=flake8
pkgver=43
pkgrel=1
arch=('i686' 'x86_64')
license=('GPL')          # not sure
pkgdesc="Flake8"
url="http://pypi.python.org/pypi/flake8/"
makedepends=('mercurial')
depends=('python2')

_hgroot="https://bitbucket.org/tarek"
_hgrepo="flake8"

build() {
    cd "$srcdir/$pkgname"
    
    python2 ./setup.py install --prefix=/usr --root=${pkgdir}
}
