# Contributor: Tocer Deng <tocer.deng@gmail.com>

pkgname=python25-pyxml
pkgver=0.8.4
pkgrel=1
pkgdesc="pyxml compiled with python25"
arch=(i686 x86_64)
url="http://pyxml.sourceforge.net/"
license=('custom')
depends=('python25')
source=(http://downloads.sourceforge.net/sourceforge/pyxml/PyXML-${pkgver}.tar.gz)
md5sums=('1f7655050cebbb664db976405fdba209')


build() {
  cd ${startdir}/src/PyXML-${pkgver}
  python2.5 setup.py build
  python2.5 setup.py install --prefix=/usr/local --root=${startdir}/pkg
  install -D -m644 LICENCE $startdir/pkg/usr/local/share/licenses/$pkgname/LICENSE
}
