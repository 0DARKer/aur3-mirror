options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Math-Int64'
source=('http://search.cpan.org/CPAN/authors/id/S/SA/SALVA/Math-Int64-0.29.tar.gz')
md5sums=('612594286ecda2ed693feb99e5452a1b')
