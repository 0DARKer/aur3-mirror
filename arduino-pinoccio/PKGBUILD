pkgname=arduino-pinoccio
pkgver=1
pkgrel=0
pkgdesc="Arduino libraries for the Pinoccio"
arch=('any')
url="https://pinocc.io"
license=('BSD')
depends=('arduino-beta')
source=('http://pinocc.io/bootstrap/pinoccio-firmware.zip')
sha1sums=('30098355c3279eed2a34cd67aa97e5802f4f9685')

package() {
  install -d $pkgdir/usr/share/arduino/libraries/
  install -d $pkgdir/usr/share/arduino/hardware/
  cd $srcdir
  find -type f -exec chmod 644 {} \;
  cp -R  pinoccio-firmware/libraries/* $pkgdir/usr/share/arduino/libraries/
  cp -R  pinoccio-firmware/hardware/*  $pkgdir/usr/share/arduino/hardware/
}
