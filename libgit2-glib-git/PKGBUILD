# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=libgit2-glib-git
pkgver=2013.04.05
pkgrel=1
pkgdesc='a glib wrapper library around the libgit2 git access library'
arch=('i686' 'x86_64')
url="http://git.gnome.org/browse/libgit2-glib"
license=('GPL2')
depends=('libgit2-git')
makedepends=('git' 'cmake' 'gobject-introspection' 'gnome-common')
provides=('libgit2-glib')
conflicts=('libgit2-glib')
source=('git://git.gnome.org/libgit2-glib')

pkgver() {
	cd libgit2-glib/
	#git describe --tags --long | sed 's|^[^0-9]*||;s|-|.|g'
	date +%F | sed 's|^[^0-9]*||;s|-|.|g'
}

build() {
	cd libgit2-glib/

	./autogen.sh
	./configure --prefix=/usr
	make
}

package() {
	cd libgit2-glib/

	make DESTDIR="${pkgdir}" install
}

sha256sums=('SKIP')
