# Maintainer: Krzysztof Wloch <wloszekk@gmail.com>
# Contributor: Luke McCarthy <luke@iogopro.co.uk>

pkgname=fasm
pkgver=1.69.29
pkgrel=1
pkgdesc="A fast and small assembler for x86"
url="http://flatassembler.net/"
license=('custom')
depends=()
arch=('i686' 'x86_64')
source=("http://flatassembler.net/fasm-$pkgver.tgz")
options=('!strip')
md5sums=('223894d6de64bfc6d3ba073fafeace11')

build() {
  cd $srcdir/fasm
  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/fasm
  install -d $pkgdir/usr/share/licenses/fasm
  echo install -m 755 -t $pkgdir/usr/bin/ fasm
  install -m 755 -t $pkgdir/usr/bin/ fasm
  install -m 644 -t $pkgdir/usr/share/licenses/fasm/ license.txt
  cp -R fasm.txt whatsnew.txt examples source $pkgdir/usr/share/fasm/
}
