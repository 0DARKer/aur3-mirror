# Contributor: 3ED <krzysztof1987@gmail.com>
pkgname=alsa-tools-emu10k1-gui
pkgver=1.0.23
pkgrel=1
pkgdesc="Gui for alsa-tools-emu10k1"
url="http://alsa-project.org/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('alsa-tools-emu10k1' 'qt3')
sha256sums=('5e048633f0324c11998cdbc283ced30d72887f9bed1f2aeb85b9ee5e9e907099'
            '4bc133ba0e97a155dd3bbf8b3eb54f792011a95a2618df543827c8e63e412cc5')
source=("ftp://ftp.alsa-project.org/pub/tools/alsa-tools-$pkgver.tar.bz2"
        "qlo10k1.desktop")

build() {
  cd "$startdir/src/alsa-tools-$pkgver/qlo10k1"
  source /etc/profile.d/qt3.sh
  export PATH=$QTDIR/bin:$PATH
  ./configure --prefix=/usr --with-qtdir=$QTDIR --disable-ld10k1test
  make || return 1
  make DESTDIR="$startdir/pkg" install
  mkdir -vp "$startdir/pkg/usr/share/applications"
  install -v -m 644 "$startdir/src/qlo10k1.desktop" \
    "$startdir/pkg/usr/share/applications/qlo10k1.desktop" || return 1

  find "$startdir/pkg/" -name '*.la' -exec rm {} \;
}
#$cat=multimedia
