post_install() {
  glib-compile-schemas usr/share/glib-2.0/schemas
  echo "The command is just 'gnome-search-tool' (without '-no-nautilus')"
}

pre_upgrade() {
  (( $(vercmp $2 3.6.0) < 0 )) && gconfpkg --uninstall gnome-search-tool
  return 0
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}
