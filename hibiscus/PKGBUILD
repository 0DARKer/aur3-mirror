# Maintainer: Jan Fader <jan.fader@web.de>
pkgname=hibiscus
pkgver=1.12.3
pkgrel=1
pkgdesc="Nice HBCI banking program in form of a plugin for jameica."
arch=('i686' 'x86_64')
url="http://www.willuhn.de/projects/hibiscus/"
license=("GPL")
depends=('java-runtime>=1.5' 'jameica' 'libstdc++5')
makedepends=('unzip')
install=(hibiscus.install)
source=(http://www.willuhn.de/projects/hibiscus/releases/1.12/$pkgname.zip)

build() {
  mkdir -p $pkgdir/opt/jameica/plugins
  cd $srcdir
  cp -r $pkgname $pkgdir/opt/jameica/plugins
}
md5sums=('b5125efdd2359db463e8f7e8c81a47b2')
