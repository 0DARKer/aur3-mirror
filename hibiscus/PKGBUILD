# Maintainer: Jan Fader <jan.fader@web.de>
pkgname=hibiscus
pkgver=2.0
pkgrel=1
pkgdesc="Nice HBCI banking program in form of a plugin for jameica."
arch=('i686' 'x86_64')
url="http://www.willuhn.de/projects/hibiscus/"
license=("GPL")
depends=('java-runtime>=1.5' 'jameica' 'libstdc++5')
makedepends=('unzip')
options=('!strip')
install=(hibiscus.install)
source=(http://www.willuhn.de/projects/hibiscus/releases/1.12/$pkgname.zip hibiscus.desktop)
md5sums=('b5125efdd2359db463e8f7e8c81a47b2'
         '7d9e2a8c5468322b4bc3ad43e6d23221')

build() {
  mkdir -p $pkgdir/opt/jameica/plugins
  mkdir -p $pkgdir/usr/share/applications
  cd $srcdir
  sed -i 's/<requires jameica="1.10.0">/<requires jameica="2.0.0">/' $srcdir/hibiscus/plugin.xml
  cp -r $pkgname $pkgdir/opt/jameica/plugins
  install -m 644 $srcdir/hibiscus.desktop $pkgdir/usr/share/applications
}
