# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=adom
pkgver=1.1.1
pkgrel=5
pkgdesc="A roguelike game with a quest-centric, plot driven structure"
arch=('i686' 'x86_64')
url="http://www.adom.de/"
license=('custom: "adom"')

if [ "$CARCH" = x86_64 ]
 then
  depends=('lib32-ncurses')
 else
  depends=('ncurses')
fi

source=(http://www.adom.de/adom/download/linux/$pkgname-111-elf.tar.gz \
        license.txt)

md5sums=('801484ba7c7c03b3b999365bc45db053'
         'c462e91a70db094c71bd192b349467cf')

build() {
  cd ${srcdir}/${pkgname}

  install -m755 -D $pkgname ${pkgdir}/usr/bin/$pkgname || return 1
  install -m644 -D ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1

#doc files
  install -d ${pkgdir}/usr/share/doc/${pkgname}/ || return 1
  install -D -m644 *.* ${pkgdir}/usr/share/doc/${pkgname}/ || return 1
}
