# Contributor: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>
# Contributor: Sergey Mamonov <mrqwer88 (at) gmail (dot) com>

pkgname=adom
pkgver=1.2.0_pre2
pkgrel=1
pkgdesc="A roguelike game with a quest-centric, plot driven structure"
arch=('i686' 'x86_64')
depends=('ncurses')
url="http://www.adom.de/"
license=('custom: "adom"')
if [ "$CARCH" = x86_64 ]
 then
  _pkgver=${pkgver}
  _arch_link=64
  md5sums=('659a068806f2375e1b51295f68801639')
 else
  # There is no pre2 for 32-bit
  _pkgver="1.2.0_pre1"
  _arch_link=32
  md5sums=('603e8501bbfc23297c4cfc7aaeb2fe3a')
fi

source=(http://www.ancardia.com/download/adom_linux_debian_${_arch_link}_${_pkgver}.tar.gz)

build() {
  cd ${srcdir}/${pkgname}

  install -m755 -D $pkgname ${pkgdir}/usr/bin/$pkgname
  sed -n '/I.A. Terms of use/,/ game company./p' readme.1st > LICENSE
  install -m644 -D LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE

  install -d ${pkgdir}/usr/share/doc/${pkgname}/
  install -D -m644 adomfaq.txt manual.doc readme.1st ${pkgdir}/usr/share/doc/${pkgname}/
}
