# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=easy-rsa-git
pkgver=2.2.0.3.gff5bfd1
pkgrel=1
pkgdesc="An easy-to-use, robust, and highly configurable VPN (Virtual Private Network) - git checkout"
arch=('i686' 'x86_64')
url="https://github.com/OpenVPN/easy-rsa"
depends=('openssl')
conflicts=('easy-rsa' 'openvpn<2.3.0')
provides=('easy-rsa')
license=('custom')
source=('git://github.com/OpenVPN/easy-rsa.git')

pkgver() {
	cd easy-rsa/
	git describe --tags --long | sed 's|^[^0-9]*||;s|-|.|g'
}

build() {
	cd easy-rsa/

	# Build easy-rsa
	autoreconf -vi
	./configure \
		--prefix=/usr
	make
}

package() {
	cd easy-rsa/

	# Install easy-rsa
	mkdir -p ${pkgdir}/usr/share/easy-rsa/
	make DESTDIR=${pkgdir} install

	# remove old openssl config
	rm ${pkgdir}/usr/share/easy-rsa/openssl-0.9.{6,8}.cnf
}

sha256sums=('SKIP')
