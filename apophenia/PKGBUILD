# Maintainer: perlawk
pkgname=apophenia
pkgver=0.99
pkgrel=1
epoch=
pkgdesc="Apophenia is an open statistical library for working with data sets and statistical models. The core functions are written in C, but bindings exist for Python "
arch=('i686' 'x86_64')
url="http://apophenia.info/"
license=('GPL')
groups=()
depends=('gsl''sqlite3')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://ncu.dl.sourceforge.net/project/apophenia/$pkgname-$pkgver-08_May_13.tgz)
noextract=()
md5sums=('84dea15e7fc6cf6e85dc16db98f4876a')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	cp -a tests/apophenia .
	./configure --prefix=/usr
	make -j4
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
