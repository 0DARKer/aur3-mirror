# Maintainer: perlawk
pkgname=apophenia
pkgver=0.998
_pkgver=10_jan_14
pkgrel=2
epoch=
pkgdesc="Apophenia is an open statistical library for working with data sets and statistical models. The core functions are written in C, but bindings exist for Python "
arch=('i686' 'x86_64')
url="http://apophenia.info/"
license=('GPL')
depends=('gsl' 'sqlite3')
source=(http://ncu.dl.sourceforge.net/project/apophenia/$pkgname-$pkgver-$_pkgver.tgz)

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make -j4
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
md5sums=('2da78472a1efc1bd672533ed5b29101f')
