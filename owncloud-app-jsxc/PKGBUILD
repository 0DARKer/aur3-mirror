pkgname=owncloud-app-jsxc
pkgver=0.8.0
pkgrel=1
pkgdesc="Facebook-like XMPP chat for owncloud with OTR-encryption"
arch=('any')
url="http://apps.owncloud.com/content/show.php/JavaScript+XMPP+Chat?content=162257"
license=('MIT')
depends=('owncloud')
makedepends=()
options=('!strip')
source=("$pkgname-$pkgver.zip::https://github.com/sualko/ojsxc/archive/v${pkgver}.tar.gz")
sha512sums=("b3d6012bf69005f4a17ab398bd493f36784feb4eabb512c143a3b926e02e83f4c057e7a465dd9e58e785e466df38ae5d9cb7648fdbb61929e5493f9bc7a2048a")

package() {
  install -d "${pkgdir}/usr/share/webapps/owncloud/apps"
  cp -a "${srcdir}/ojsxc-${pkgver}" "${pkgdir}/usr/share/webapps/owncloud/apps/ojsxc"
}
