# Contributor: gem2arch 0.1
pkgname=ruby-oauth
pkgver=0.3.6
_realname="oauth"
pkgrel=1
pkgdesc="OAuth Core Ruby implementation"
arch=(any)
url="http://gemcutter.org/gems/oauth"
license=("GPL")
depends=('ruby' 'ruby-hmac')
source=(http://gems.rubyforge.org/gems/oauth-$pkgver.gem)
noextract=(oauth-$pkgver.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_realname}-$pkgver.gem
}
md5sums=('def2e8e0aa3c11f03afe69dffb2b53a0')
