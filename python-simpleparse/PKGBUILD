# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=python-simpleparse
pkgver=2.1.0a1
pkgrel=2
pkgdesc="A simple and fast parser generator"
arch=('i686')
url="http://simpleparse.sourceforge.net"
license=('custom')
depends=('python')
source=('http://downloads.sourceforge.net/simpleparse/SimpleParse-2.1.0a1.tar.gz')
md5sums=('9d69911f73f48be8eab44774622d13fc')

build() {
  cd $startdir/src/SimpleParse-$pkgver
  python setup.py bdist_dumb || return 1
  install -D license.txt $startdir/pkg/usr/share/licenses/python-simpleparse/COPYING
  cd $startdir/pkg
  tar xzvf $startdir/src/SimpleParse-$pkgver/dist/SimpleParse-$pkgver.linux*.tar.gz	
}
