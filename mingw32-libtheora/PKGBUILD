pkgname=mingw32-libtheora
pkgver=1.1.1
pkgrel=1
pkgdesc="An open video codec developed by the Xiph.org (mingw32)"
arch=(any)
url="http://xiph.org"
license=('BSD custom')
depends=('mingw32-libogg' 'mingw32-libvorbis')
makedepends=('mingw32-gcc' 'mingw32-binutils' 'mingw32-w32api')
options=(!libtool !strip !buildflags)
source=(http://downloads.xiph.org/releases/theora/libtheora-$pkgver.tar.bz2)
md5sums=('292ab65cedd5021d6b7ddd117e07cd8e')

build() {
  cd "$srcdir/libtheora-$pkgver"

  unset LDFLAGS
  
  CFLAGS=${CFLAGS/-march=$CARCH} ./configure --prefix=/usr --enable-static --enable-shared --prefix=/usr/i486-mingw32 --host=i486-mingw32
  make
}

package() {
  cd "$srcdir/libtheora-$pkgver"

  make DESTDIR="$pkgdir" install
}
