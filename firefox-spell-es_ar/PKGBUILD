pkgname=firefox-spell-es_ar
pkgver=3.0.10
pkgrel=1
pkgdesc="Spanish (EspaÃ±ol Argentina) languague dictionary (spellcheker) for Firefox 3"
arch=('i686' 'x86_64')
license=('GPL')
depends=("firefox>=$pkgver")
makedepends=('unzip')
url="http://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/"
source=(http://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/es_AR.zip)
md5sums=('4c634da95fad11093ba65f6367ee5e19')

build() {
	cd ${startdir}/src

	# Borramos los changelogs y el readme
	rm *.txt
  
	install -D -m644 es_ES.aff ${pkgdir}/usr/share/myspell/es_ES.aff || return 1
	install -D -m644 es_ES.dic ${pkgdir}/usr/share/myspell/es_ES.dic || return 1
}


