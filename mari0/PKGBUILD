# Maintainer: andy123 < ajs [at] online [dot] de >

pkgname=mari0
pkgver=1.4
pkgrel=1
pkgdesc="The Mario game with Portal gun mechanics."
arch=('any')
url="http://stabyourself.net/mari0/"
license=('CCPL')
depends=('love-hg')
_gamepkg="${pkgname}-linux.zip"
source=(${pkgname}.sh
	${pkgname}.desktop
	http://stabyourself.net/dl.php?file=$pkgname-1004/$pkgname-linux.zip)
sha1sums=('4857cc5a29f1adab001438d24447afeaf83d7025'
          '211f9358be36ac94e01e67a0d6db5d60b97eea1b'
	  'b32db0e08865f72d71f0b0c70e231b88c66d2302')

package() {
	# Install Data
	install -D -m755 "${srcdir}/${pkgname}_${pkgver}.love" "${pkgdir}/usr/share/games/${pkgname}/${pkgname}.love"
	install -D -m644 "${srcdir}/README" "$pkgdir/usr/share/games/${pkgname}/readme"

	# Install Launcher
	install -D -m755 "${srcdir}/${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"

	# Install Desktop
	install -D -m644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
}
