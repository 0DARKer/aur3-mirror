# Maintainer: Carl George <carl.george@rackspace.com>

pkgname=python2-rackspace-monitoring-cli
pkgver=0.5.2
pkgrel=1
pkgdesc="Command Line Utility for Rackspace Cloud Monitoring (MaaS)"
arch=('i686' 'x86_64')
url="http://pypi.python.org/pypi/rackspace-monitoring-cli"
license=('Apache')
depends=('python2-rackspace-monitoring')
provides=("$pkgname=$pkgver")
source=(http://pypi.python.org/packages/source/r/rackspace-monitoring-cli/rackspace-monitoring-cli-${pkgver}.tar.gz)
md5sums=('ae4d06ed839d888d36b6eb4bcb72d62c')

package() {
    cd "${srcdir}/rackspace-monitoring-cli-${pkgver}"
    python2 setup.py install --root=${pkgdir} --optimize=1 || return 1
}
