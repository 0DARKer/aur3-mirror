pkgname='perl-io-socket-ip'
pkgver='0.25'
pkgrel='1'
pkgdesc="Family-neutral IP socket supporting both IPv4 and IPv6"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=0')
makedepends=()
url='http://search.cpan.org/dist/IO-Socket-IP'
source=('http://search.cpan.org/CPAN/authors/id/P/PE/PEVANS/IO-Socket-IP-0.25.tar.gz')
md5sums=('88118bccdb806b3ad9e9c046666fa88b')
sha512sums=('5bcc90091ded13181645e82ba84320ad9c434634443ea4e8eb0fafd736c54d83bfb23136be2e37fe95052d0f56f0c8d5dba0d7b73ab0604740ccc85cd6822bbd')
_distdir="IO-Socket-IP-0.25"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

