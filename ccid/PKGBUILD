# Contributor: Daniel Plaza <daniel.plaza.espi@gmail.com>
pkgname=ccid
pkgver=1.4.1
pkgrel=1
pkgdesc="A generic USB CCID (Chip/Smart Card Interface Devices) driver"
arch=('i686' 'x86_64')
url="http://pcsclite.alioth.debian.org/ccid.html"
license="LGPL"
depends=('pcsclite' 'libusb')
makedepends=('pkgconfig' 'gcc')
source=(https://alioth.debian.org/frs/download.php/3475/ccid-1.4.1.tar.bz2)
md5sums=('fef5f950dc35202df2fed832498986b9')

build() {
  cd $startdir/src/ccid-$pkgver
  ./configure --prefix=/usr --enable-udev --enable-twinserial
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m644 $startdir/src/ccid-$pkgver/src/92_pcscd_ccid.rules $startdir/pkg/etc/udev/rules.d/92_pcscd_ccid.rules 
}
