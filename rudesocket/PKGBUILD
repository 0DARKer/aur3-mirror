# $Id: PKGBUILD,v 1.9 2006/05/20 22:35:02 uid1016 Exp $
# Maintainer: Alexis211 <alexis211@gmail.com>

pkgname=rudesocket
pkgver=1.2.0
pkgrel=1
pkgdesc="RudeSocket Open Source C++ socket library"
url="http://rudeserver.com/socket/usage.html"
arch=(i686)
license=('GPL')
depends=()
makedepends=('gcc')
source=(http://infos.informatique.free.fr/Software/rudesocket/$pkgname-$pkgver.tar.bz2)
md5sums=('67f07f0c434ab8262157e7f5bbeb59dd')

build() {
  cd $startdir/src/$pkgname-$pkgver
  wget http://infos.informatique.free.fr/Software/rudesocket/nothing.diff || return 1
  patch src/socket_tcpclient.cpp nothing.diff
  ./configure --prefix=/usr
  /usr/bin/make || return 1
  /usr/bin/make install DESTDIR=$startdir/pkg
}

