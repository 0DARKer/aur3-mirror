pkgname=hamlib
pkgver=1.2.12
pkgrel=1
pkgdesc="HAM radio equipment control libraries"
arch=('i686' 'x86_64')
url="http://hamlib.org"
license=('GPL' 'LGPL')
depends=('perl' 'python' 'tcl' 'libxml2' 'libusb')
makedepends=('libtool' 'swig')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
options=('!emptydirs')

build() {
	cd $srcdir/$pkgname-$pkgver

	./configure --prefix=/usr \
		--with-perl-binding \
		--with-python-binding \
		--with-tcl-binding

	make || return 1
	make DESTDIR=$pkgdir install

	# fix perl module location
	cd $pkgdir/usr/lib/perl5/site_perl/
	mkdir current/
	mv auto current
	mv Hamlib.pm current
	rm perltest.pl

	/usr/bin/find $pkgdir -name '.packlist' -delete
	/usr/bin/find $pkgdir -name '*.pod' -delete
}
md5sums=('914835c0fe4d618d1cd62f1fd0a8dd7d')
sha256sums=('735782ecd83de4036cef7dfcc87eac5095420406bd0ac2262d967e808c2d108c')
