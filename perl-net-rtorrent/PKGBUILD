pkgname='perl-net-rtorrent'
pkgver='0.10'
pkgrel='1'
pkgdesc="Perl interface to rtorrent via XML-RPC."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-collection>=0.43' 'perl-rpc-xml>=0.63')
url='http://search.cpan.org/dist/Net-RTorrent'
source=('http://search.cpan.org/CPAN/authors/id/Z/ZA/ZAG/Net-RTorrent-0.10.tar.gz')
md5sums=('08612cd394a068dd8147c584ef66973b')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Net-RTorrent-0.10"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
