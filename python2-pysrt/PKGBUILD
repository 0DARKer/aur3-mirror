# Maintainer: Veli-Jussi Raitila <vjr@iki.fi>

pkgname=python2-pysrt
_pkgname=pysrt
pkgver=0.4.5
pkgrel=1
pkgdesc="Python parser for SubRip (srt) files"
arch=('any')
url="https://github.com/byroot/pysrt"
license=('GPL3')
depends=('python2-charade')
makedepends=('python2-distribute')

source=(http://pypi.python.org/packages/source/p/pysrt/${_pkgname}-${pkgver}.tar.gz)
md5sums=('3eeaa616c5105c708d2e5923c496ab7b')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  # Remove tests
  rm -rf tests
  
  python2 setup.py install --root="${pkgdir}" --optimize=1
}
