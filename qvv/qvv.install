post_install() {
  update-mime-database /usr/share/mime > /dev/null 2>&1
  update-desktop-database /usr/share/applications > /dev/null 2>&1
  gtk-update-icon-cache /usr/share/icons/hicolor > /dev/null 2>&1
}

post_upgrade() {
  post_install $1
}

post_remove() {
  post_install $1
}

op=$1
shift

$op $*
