# Contributor: Andreas Wagner < A dot Wagner at stud dot uni-frankfurt dot de >

pkgname=qvv
pkgver=4.02
pkgrel=2
pkgdesc="Qt-based image browser"
arch=(i686 x86_64)
url="http://cade.datamax.bg/qvv/"
license=('GPL')
depends=('qt')
source=(http://cade.datamax.bg/qvv/$pkgname-$pkgver.tar.gz
	qvv.desktop)

build() {
  cd "$startdir/src/$pkgname-$pkgver"
  qmake || return 1
  make || return 1
  install -dm755 "$pkgdir/usr/bin"
  install -dm755 "$pkgdir/usr/share/applications"
  install -dm755 "$pkgdir/usr/share/icons/hicolor/{16x16/apps,128x128/apps}"
  install -m755 qvv "$pkgdir/usr/bin/qvv"
  install -m644 qvv.desktop "$pkgdir/usr/share/applications/qvv.desktop"
  install -m644 "$srcdir/images/qvv_icon_128x128.png" "$pkgdir/usr/share/icons/hicolor/128x128/apps/qvv.png"
  install -m644 "$srcdir/images/qvv_icon_16x16.png" "$pkgdir/usr/share/icons/hicolor/16x16/apps/qvv.png"
}


md5sums=('6ab47a5344e3afa1a4d79928b3522e22'
         '503b9763e87ffb3018c4f1a6b878b754')
