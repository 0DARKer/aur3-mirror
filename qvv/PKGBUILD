# Contributor: Andreas Wagner < A dot Wagner at stud dot uni-frankfurt dot de >

pkgname=qvv
pkgver=4.01
pkgrel=1
pkgdesc="Qt-based image browser"
arch=(i686 x86_64)
url="http://cade.datamax.bg/qvv/"
license=('GPL')
depends=('qt')
source=(http://cade.datamax.bg/qvv/$pkgname-$pkgver.tar.gz)

build() {
  cd "$startdir/src/$pkgname-$pkgver"
  qmake || return 1
  make || return 1
  install -dm755 "$startdir/pkg/usr/bin"
  install -m755 qvv "$startdir/pkg/usr/bin/qvv"
}

md5sums=('96a4538c0ead3ddbffeb98868a9ff2b8')

