# Author: SanskritFritz (gmail)

pkgname=wuala-daemon
pkgver=20110906
pkgrel=1
pkgdesc="Run wuala as daemon. Needs wuala installed."
arch=('any')
url=http://www.wuala.com/
license=('WTFPL')
depends=('wuala')
source=("wualad.sh" "wualatd.sh" "wualad_login.sh")
install='wualad.install'

md5sums=('f616509fb97b2c49b9ef8b2fff1784e5'
         'ff833b7562227649d0a8564abf81a319'
         '56bab4ba71f204a7abbb752cb842ffc7')

package() {
	cd $srcdir
	# Don't allow others to even read the file, as it will contain Wuala's password in plain text:
	install -Dm700 wualad_login.sh $pkgdir/etc/rc.d/wualad_login

	install -Dm755 wualad.sh $pkgdir/etc/rc.d/wualad
	install -Dm755 wualatd.sh $pkgdir/etc/rc.d/wualatd
	warning "The wualatd daemon is for trading only, it will not perform a login."
}
