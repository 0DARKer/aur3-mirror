# Author: SanskritFritz (gmail)

pkgname=wuala-daemon
pkgver=20110628
pkgrel=1
pkgdesc="Run wuala as daemon. Needs wuala installed."
arch=('any')
url=http://www.wuala.com/
license=WTFPL
depends=('wuala')
source=("wualad.sh" "wualatd.sh")
md5sums=('a5989db579092500a9c1911650457649'
         'f20c3d58d475b1099773a90de6efd980')

package() {
	cd $srcdir
	# Don't allow others to even read the file, as it contains Wuala's password in plain text:
	install -Dm700 wualad.sh $pkgdir/etc/rc.d/wualad
	install -Dm700 wualatd.sh $pkgdir/etc/rc.d/wualatd
	echo
	warning "When the wualad daemon runs, the Wuala username and password will be visible"
	warning "    in the process list to any user logged in (try 'ps -ef' or 'top')"
	warning "In contrast, the wualatd daemon is for trading only, it will not perform any login"
	echo
	msg "Enter your Wuala username: "
	read wuala_user;
	msg "Enter your Wuala password: "
	read wuala_passw;
	msg "Enter the Linux username Wuala will be started with: "
	read linux_user;
	sed -i "s/WualaLoginName/$wuala_user/g;s/WualaPassword/$wuala_passw/g;s/LinuxLoginName/$linux_user/g" $pkgdir/etc/rc.d/wualad
	sed -i "s/LinuxLoginName/$linux_user/g" $pkgdir/etc/rc.d/wualatd
}

