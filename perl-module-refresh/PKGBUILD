# Contributor: Daenyth
pkgname=perl-module-refresh
pkgver=0.13
pkgrel=1
pkgdesc="Perl/CPAN module Module::Refresh - Refresh %INC files when updated on disk"
arch=(i686 x86_64)
license=(GPL PerlArtistic)
url="http://search.cpan.org/~jesse/Module-Refresh"
options=(!emptydirs)

depends=(perl)

source=(http://search.cpan.org/CPAN/authors/id/J/JE/JESSE/Module-Refresh-$pkgver.tar.gz)
md5sums=('d968e32fc272b5a258f527504c99dc7d')

build() {
  cd "${srcdir}/Module-Refresh-${pkgver}"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
