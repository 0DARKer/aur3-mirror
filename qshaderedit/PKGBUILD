# Contributor: Erico Nunes <nunes.erico@gmail.com>
pkgname=qshaderedit
pkgver=0.1.3
pkgrel=2
pkgdesc="Shader editor"
arch=(i686)
url="http://code.google.com/p/qshaderedit/"
license=('GPLv2')
groups=(gamedev)
depends=(cmake nvidia-cg-toolkit glew)
source=(http://qshaderedit.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('b6595c3ebb8ba465cd2effd59b190255')

build() {
  cd "$srcdir/$pkgname"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}

