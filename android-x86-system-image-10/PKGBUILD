_sdkver=2.3.7
_apiver=10
_rel=r01
pkgname=android-x86-system-image-${_apiver}
pkgver=${_sdkver}_r01
pkgrel=2
pkgdesc="Android x86 Atom System Image, API-${_apiver}"
arch=('any')
url="http://software.intel.com/en-us/articles/android-237-gingerbread-x86-emulator-image-add-on/"
license=('custom')
depends=("android-platform-${_apiver}")
optdepends=('qemu-kvm' 'libvirt')
options=('!strip')
source=("http://software.intel.com/sites/landingpage/android/addon_intel_sysimg_${_sdkver}_api-${_apiver}.zip")
sha256sums=('37a45c032dc0c9b4f3477acea2b7bc8dda55ad06aa046b8bae0454c94912d3eb')

package() {
  mkdir -p "${pkgdir}/opt/android-sdk/add-ons"
  mv "${srcdir}/addon_Intel_sysimg_${_sdkver}_api-${_apiver}" "${pkgdir}/opt/android-sdk/add-ons/addon-intel_atom_x86_system_image-intel_corpotation-${_apiver}"

  chmod -R ugo+rX "${pkgdir}/opt"
}
