pkgname=gatling-cvs
pkgver=20100430
pkgrel=1
pkgdesc="a http, ftp and smb server"
arch=('i686' 'x86_64')
url=http://www.fefe.de/gatling/
license=(GPL)
conflicts=(gatling)
depends=(openssl)
makedepends=('libowfat>=0.28' 'cvs')
source=()
md5sums=()

_cvsroot=":pserver:cvs@cvs.fefe.de:/cvs"
_cvsmod="gatling"

build() {
    cd $startdir/src
    msg "Connecting to cvs.fefe.de CVS server...."
    cvs -d $_cvsroot -z9 co $_cvsmod
    msg "CVS checkout done or server timeout"
    msg "Starting make..."
    cd $_cvsmod

	sed -i '0,/\/man/s//\/share\/man/' GNUmakefile
	make DIET= || return 1
	make prefix=$pkgdir/usr install
}
