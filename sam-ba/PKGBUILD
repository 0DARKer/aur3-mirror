# Maintainer: Jari
pkgname=sam-ba
pkgver=2.10
pkgrel=1
pkgdesc="The SAM Boot Assistant (SAM-BA). It allows to program flash media through RS232, USB or Jtag SAM-ICE link."
url="http://www.atmel.com"
arch=('x86_64' 'i686')
license=('unknown')
depends=()
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
options='!strip'

source=("http://www.atmel.com/dyn/resources/prod_documents/${pkgname}_${pkgver}.zip")
md5sums=('3e6eb26552ee00befda24e1941956848')
 
package() {
  cd "${srcdir}"
  mkdir -p $pkgdir/opt/sam-ba
  cp -a sam-ba_cdc_linux/* ${pkgdir}/opt/sam-ba
}
