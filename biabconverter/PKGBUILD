# Contributor: Florian Richter <Florian_Richter@gmx.de>
pkgname=biabconverter
pkgver=0.6.6
pkgrel=1
pkgdesc="converts band-in-a-box files to MMA and Lilypond"
arch=(i686 x86_64)
url="http://www.brenzi.ch/builder.php?content=projects_biabconverter"
license=('GPL')
depends=(perl)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
source=(http://www.brenzi.ch/data/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('008cecbbbd4296164c3b09b0cc41511b')

build() {
  cd $startdir/src/$pkgname-$pkgver
  mkdir -p $startdir/pkg/usr/share/biabconverter/templates
  cp *.pm $startdir/pkg/usr/share/biabconverter
  cp *.lyt $startdir/pkg/usr/share/biabconverter/templates
  mkdir -p $startdir/pkg/usr/bin
  cp biabconverter $startdir/pkg/usr/bin
}
