
post_install() {
	echo
	echo "Enter the keymap name that will be used for logkeys (ex. en_GB)."
	echo "Keyboard map files should be listed in /usr/share/lkmaps/"
	echo "Please review the parameters in /etc/conf.d/logkeysd afterwards."
	read keymap_name
	sed -i "s/_keymap/${keymap_name}/g" /etc/conf.d/logkeysd
	echo Done installing logkeys.
}

post_upgrade() {
	post_install $1
}
