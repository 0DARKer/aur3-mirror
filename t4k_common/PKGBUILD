# Maintainer: Tasos Latsas < tlatsas2000 at gmail dot com >

pkgname=t4k_common
pkgver=0.0.3
pkgrel=1
pkgdesc="Common library for code shared by TuxType and TuxMath"
arch=('i686' 'x86_64')
url="http://tux4kids.alioth.debian.org/"
license=('GPL')
depends=('sdl_image' 'sdl_mixer' 'sdl_pango' 'sdl_net' 'librsvg')
makedepends=('make')
options=('!docs')
source=(https://alioth.debian.org/frs/download.php/3439/${pkgname}-${pkgver}.tar.gz)
sha1sums=('c07e64c9386c1a44a63e3d2db5eb1ee5d4b3632f')

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
