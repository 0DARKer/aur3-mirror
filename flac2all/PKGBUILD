# Maintainer: graysky <graysky AT archlinux DOT us>

pkgname=flac2all
pkgver=1.3
pkgrel=1
pkgdesc="Multi-threaded audio converter of FLAC to either Ogg Vorbis or MP3 retaining all tags and metadata."
arch=('any')
url="http://code.google.com/p/flac2all"
license=('GPL2')
depends=('flac' 'lame' 'vorbis-tools' 'python2')
source=($pkgname)
sha256sums=('a4879bd7bac68cc5c0bb23ad7730629f5fe1337aa1bd7e39bb911e6b71a14669')

package() {
  cd "$srcdir"
  # set python --> python2 and reset defaults to what are considered transparent for vorbis and lame
  sed -i -e s'/python/python2/1' -i -e s'/convertaudio.py/flac2all/' -i -e s'/-q 2/-q 5/g' -i -e s'/ -q 0//g' $pkgname
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
}

# vim:set ts=2 sw=2 et:
