post_install() {
	echo "==> You need to copy the themes to $(home)/.config/awesome/themes/ (from /usr/share/awesome/themes/trans*)"
	echo "==> Make sure to set your own background unless you want my favorites!"
}
post_upgrade() {
	post_install
}
post_remove() {
	echo "==> Make sure to remove the '$HOME/.config/awesome/themes/trans*' folders!"
}
