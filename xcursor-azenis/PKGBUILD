#Maintainer: Jarred Leonardo <jarredleonardo at googlemail dot com>

pkgname=xcursor-azenis
pkgver=1.0
pkgrel=1
pkgdesc="Azenis cursor theme."
arch=(i686 x86_64)
url="http://xfce-look.org/content/show.php/Azenis?content=104666"
license=('Artistic 2.0')
depends=()
source=("http://xfce-look.org/CONTENT/content-files/104666-Azenis.tar.gz")
md5sums=('a3b2dae17eb6d056dc65e9521ae6ba61')

build() {
	cd $startdir/src/Azenis
	install -d -m755 $startdir/pkg/usr/share/icons/azenis/cursors
	cd $startdir/src/Azenis/cursors
	for i in * ; do
		install -D -m644 $i $startdir/pkg/usr/share/icons/azenis/cursors
	done
}
