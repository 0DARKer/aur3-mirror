# Unknown contributor
# Maintainer : Calimero <calimeroteknik at free dot fr>

pkgname=gsimplecal-hg
pkgver=53
pkgrel=1
pkgdesc="Simple gtk calendar"
arch=('i686' 'x86_64')
url="http://code.google.com/p/gsimplecal/"
license=('GPL')
depends=('gtk2')
conflicts=('gsimplecal')
makedepends=('mercurial')

_hgroot="https://gsimplecal.googlecode.com/hg/"
_hgrepo="gsimplecal"

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [ -d $_hgrepo ] ; then
    cd $_hgrepo
    hg pull -u || return 1
    msg "The local files are updated."
  else
    hg clone $_hgroot $_hgrepo || return 1
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  #
  # BUILD HERE
  #

  ./autogen.sh || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
