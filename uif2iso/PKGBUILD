# Contributor: Juliao Gesse Fernandes <juliao.gf *AT* gmail *DOT* com>
pkgname=uif2iso
pkgver=0.1.7c
pkgrel=1
pkgdesc="UIF2ISO is an open source command-line tool for converting single and multipart UIF images to the ISO format."
arch=(i686 x86_64)
url='http://aluigi.org/mytoolz.htm#uif2iso'
license=('GPL')
depends=('zlib' 'glibc')
makedepends=('glibc')
source=(http://aluigi.org/mytoolz/$pkgname.zip)
md5sums=('2eb9797ec463c38253014d45591a7043')

build() {
  cd "$startdir/src/src"
  make all || return 1
  make prefix="$startdir/pkg/usr" install
}

