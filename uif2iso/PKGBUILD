# Maintainer: TheBenj <thebenj88 *AT* gmail *DOT* com>
pkgname=uif2iso
pkgver=0.1.7c
pkgrel=1
pkgdesc="Open source CLI tool for converting single/multi part UIF image files to ISO."
arch=(i686 x86_64)
url='http://aluigi.org/mytoolz.htm#uif2iso'
license=('GPL')
depends=('zlib' 'glibc')
makedepends=('glibc')
source=(http://aluigi.altervista.org/mytoolz/${pkgname}.zip)
md5sums=('2eb9797ec463c38253014d45591a7043')

build() {
  cd "${srcdir}/src"
  make || return 1
}

package() {
	cd "${srcdir}/src"
	make prefix="$pkgdir/usr" install
}