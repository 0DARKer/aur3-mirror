# Contributor: Ian Heafer <archlinux at studio oneword turnip dot net>
pkgname=iscan-plugin-gt-x720
pkgver=0.1.1
pkgrel=1
pkgdesc="iscan plugin for Epson Perfection V30 scanner."
arch=('i686' 'x86_64')
url="http://linux.avasys.jp/drivers/iscan-plugins/esci-interpreter-gt-f720/0.1.1/"
license=('custom')
depends=('iscan')
makedepends=('deb2targz')
install=gt-x720.install
source=(http://linux.avasys.jp/drivers/iscan-plugins/esci-interpreter-gt-f720/${pkgver}/esci-interpreter-gt-f720_${pkgver}-2_i386.deb)
[[ $CARCH == "x86_64" ]] && \
  source=(http://linux.avasys.jp/drivers/iscan-plugins/esci-interpreter-gt-f720/${pkgver}/esci-interpreter-gt-f720_${pkgver}-2_amd64.deb)
md5sums=('c91f57f882583c0e0c5eb0c8f77389fc')
[[ $CARCH == "x86_64" ]] && md5sums=('b1450f60f089b3fa051fa0f12967ef17')
build() {
  cd "$startdir"
  deb2targz $(basename ${source[0]})
  tar -xf $(basename ${source[0]//.deb/.tar.gz})
  mv usr "$pkgdir"
  mkdir $pkgdir/usr/share/licenses
  mv $pkgdir/usr/share/doc/esci-interpreter-gt-f720 $pkgdir/usr/share/licences/
  rmdir $pkgdir/usr/share/doc
}


