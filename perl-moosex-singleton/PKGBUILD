pkgname=perl-moosex-singleton
pkgver=0.27
pkgrel=1
pkgdesc=""
arch=('any')
url="http://search.cpan.org/~bobtfish/MooseX-Singleton"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-moose')
options=(!emptydirs)
source=("http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/MooseX-Singleton-0.27.tar.gz")

build() {
  cd "$srcdir/MooseX-Singleton-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd "$srcdir/MooseX-Singleton-$pkgver"
  make install DESTDIR="$pkgdir/"
}

md5sums=('e86e126f706fb49c928ac453606c0883')
