# Maintener: Nic0 <nicolas.caen@gmail.com>

pkgname=tyrs
pkgver=0.3.0
pkgrel=1
pkgdesc="A lightweight console Twitter and Identica client using ncurses and Python."
arch=('any')
url="http://tyrs.nicosphere.net"
license=('GPL')
depends=('python-twitter' 'python2-distribute')
source=('http://src.nicosphere.net/tyrs/tyrs-0.3.0.tar.gz')
md5sums=('c8237786dd74d7d86b7790319f2e3283')

build() {
  cd "$srcdir"

  tar xvf $pkgname-$pkgver.tar.gz && cd $pkgname

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname"

  python2 setup.py install --prefix=/usr --root="$pkgdir"
}
