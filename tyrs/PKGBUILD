# Maintener: Nic0 <nicolas.caen@gmail.com>

pkgname=tyrs
pkgver=0.3.3
pkgrel=3
pkgdesc="A lightweight console Twitter Client using ncurses and Python."
arch=('any')
url="http://tyrs.nicosphere.net"
license=('GPL')
depends=("python-distutils-extra" "python2-distribute" "gettext")
source=("http://pypi.python.org/packages/source/t/tyrs/tyrs-${pkgver}.tar.gz")
md5sums=('e611cf58721bd75552689eee62c1d78e')

build() {
  cd "$srcdir"

  tar xvf $pkgname-$pkgver.tar.gz && cd $pkgname-$pkgver

  python2 setup.py build
}

package() {
  cd "$srcdir/${pkgname}-${pkgver}"

  python2 setup.py install --prefix=/usr --root="$pkgdir"
}
