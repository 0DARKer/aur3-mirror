# Maintener: Nic0 <nicolas.caen@gmail.com>

pkgname=tyrs
pkgver=0.1.1
pkgrel=1
pkgdesc="A lightweight console Twitter Client using ncurses and Python."
arch=('any')
url="https://github.com/Nic0/tyrs"
license=('GPL')
depends=('python-twitter')
source=('http://src.nicosphere.net/tyrs/tyrs-0.1.1.tar.gz')
md5sums=('3220cc073853eb52f787d9f918f79e36')

build() {
  cd "$srcdir"

  tar xvf $pkgname-$pkgver.tar.gz && cd $pkgname

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname"

  python2 setup.py install --prefix=/usr --root="$pkgdir"
}
