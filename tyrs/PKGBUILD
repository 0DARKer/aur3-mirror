# Maintener: Nic0 <nicolas.caen@gmail.com>

pkgname=tyrs
pkgver=0.2.4
pkgrel=1
pkgdesc="A lightweight console Twitter Client using ncurses and Python."
arch=('any')
url="http://tyrs.nicosphere.net"
license=('GPL')
depends=('python-twitter' 'python2-distribute')
source=('http://src.nicosphere.net/tyrs/tyrs-0.2.4.tar.gz')
md5sums=('a55f7b364decedd82c25a69732d1a3c9')

build() {
  cd "$srcdir"

  tar xvf $pkgname-$pkgver.tar.gz && cd $pkgname

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname"

  python2 setup.py install --prefix=/usr --root="$pkgdir"
}
