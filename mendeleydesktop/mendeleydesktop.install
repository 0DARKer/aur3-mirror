post_install() {
  if [ -n "$1" ];then
    action=uninstall
    icon=''
  else
    action=install
    icon='/usr/share/icons/hicolor/${size}x${size}/apps/mendeleydesktop.png'
  fi
  for size in 16 22 32 48 64 128;do
    eval xdg-icon-resource $action --novendor --size $size $icon mendeleydesktop
  done
}
post_upgrade() {
  post_install
}
post_remove() {
  post_install u
}
