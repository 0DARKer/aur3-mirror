# Contributor: Piotr Rogo≈ºa <rogoza.piotr@gmail.com>
pkgname=spawn-fcgi-php
pkgver=1.0
pkgrel=2
pkgdesc="script to provide simple cgi-php support for nginx http daemon"
arch=('i686' 'x86_64')
url="http://dracorp.one.pl/linux/spawn-fcgi-php"
license=('GPL')
#groups=('nginx')
depends=('php-cgi' 'spawn-fcgi')
makedepends=('make')
backup=('etc/conf.d/spawn-fcgi-php.conf')
source=('spawn-fcgi-php' 'spawn-fcgi-php.conf' 'nginx.conf.example')

build() {
	install -Dm775 spawn-fcgi-php ${pkgdir}/etc/rc.d/spawn-fcgi-php
	install -Dm664 spawn-fcgi-php.conf ${pkgdir}/etc/conf.d/spawn-fcgi-php.conf
	install -Dm664 nginx.conf.example ${pkgdir}/etc/nginx/nginx.conf.example
}

# vim:set ts=2 sw=2 et ft=sh:
md5sums=('a0905c33100fe78a3e2250603b02c986'
         '64eb1a0f8eba8d0bcf7bf6bc04cb2a71'
         'dd17213d2bf6c75d1f06d3a2ef8d018b')
