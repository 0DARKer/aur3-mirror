# Maintainer: gadget3000 <gadget3000 at msn dot com>

pkgname=vvvvvv
pkgver=2.0
pkgrel=2
pkgdesc="A retro styled 2D platformer"
arch=('i686' 'x86_64')
url="http://thelettervsixtim.es/"
license=('unknown')
depends=('libjpeg6' 'libtiff4' 'slang' 'libcaca' 'aalib')
#source=(VVVVVV_2.0_Linux2.tar.gz)
#noextract=(VVVVVV_2.0_Linux2.tar.gz)
md5sums=('9798573db5ba1f48631c99c3adf16548')

build() {
  cd $srcdir
  echo Please place VVVVVV_${pkgver}_Linux2.tar.gz into $(pwd)
  echo Press Enter to continue
  read -a _unused
  install -d ${pkgdir}/opt/
  tar xzf VVVVVV_2.0_Linux2.tar.gz -C ${pkgdir}/opt/
  install -d ${pkgdir}/usr/bin
  ln -s /opt/VVVVVV/VVVVVV ${pkgdir}/usr/bin/VVVVVV
}
