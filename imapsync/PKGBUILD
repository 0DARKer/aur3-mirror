pkgname=imapsync
pkgver=1.366
pkgrel=1
pkgdesc="IMAP synchronisation, sync, copy or migration tool"
arch=('any')
url="http://www.linux-france.org/prj/"
license=('GPL')
depends=('perl-date-manip' 'perl-mail-imapclient' 'perl-term-readkey' 'perl-io-socket-ssl')
source=(http://www.linux-france.org/prj/$pkgname/dist/$pkgname-$pkgver.tgz)
md5sums=('56641586a58d0361bf8decac026565f0')
sha256sums=('d7f78a4a072c9ba0ad0e6007aef0078a6f570d4573a0020aeef00b4699d1ec12')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
