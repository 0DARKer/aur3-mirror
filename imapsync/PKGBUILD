pkgname=imapsync
pkgver=1.592
pkgrel=1
pkgdesc="IMAP synchronisation, sync, copy or migration tool"
arch=('any')
url="http://www.linux-france.org/prj/"
license=('GPL')
depends=('perl-date-manip' 'perl-mail-imapclient' 'perl-term-readkey' 'perl-io-socket-ssl' 'perl-file-copy-recursive' 'perl-io-tee')
source=("https://fedorahosted.org/released/$pkgname/$pkgname-$pkgver.tgz")
md5sums=('c9144e462422cd3fe938286ec5b6a93a')
sha256sums=('dd359a5b871dd278fbb39ba0c087576e97af1d746c49a104bc00a533b463ab64')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
