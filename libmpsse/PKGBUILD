#
# PKGBUILD for libmpsse
#
# Contributor: Uffe Jakobsen <uffe@uffe.org>
# Maintainer: Uffe Jakobsen <uffe@uffe.org>
#
pkgname=libmpsse
pkgver=1.3
pkgrel=1
epoch=
pkgdesc="Open source library for SPI/I2C control via FTDI chips"
arch=('i686', 'x86_64')
url="http://code.google.com/p/libmpsse/"
license=('GPLv2')
groups=()
depends=('libftdi' 'python2')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz"
        "src_configure_ac.patch")
noextract=()
md5sums=('628eb9a7d7250070f5841ed44a248f84'
         '4c2490d01c0473734ac2b3450e3f32df')

prepare() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 -i "$srcdir/src_configure_ac.patch"
  cd "$srcdir/$pkgname-$pkgver/src"
  autoconf
}

build() {
  cd "$srcdir/$pkgname-$pkgver/src"
  sh configure
  make all
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  #make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver/src"
  make DESTDIR="$pkgdir/" install
}

# EOF
