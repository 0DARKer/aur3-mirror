# Contributor: gem2arch 0.1
pkgname=ruby-net-scp
pkgver=1.0.4
_realname="net-scp"
pkgrel=1
pkgdesc="A pure Ruby implementation of the SCP client protocol"
arch=(any)
url="http://net-ssh.rubyforge.org/scp"
license=("GPL")
depends=('ruby' 'ruby-net-ssh>=1.99.1')
source=(http://gems.rubyforge.org/gems/net-scp-$pkgver.gem)
noextract=(net-scp-$pkgver.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_realname}-$pkgver.gem
}
md5sums=('7fda0eda72b66d99816d516c5fcd4de2')
