# Maintainer : Robert Knauer <robert@privatdemail.net>
# Contributor: Dan Serban

pkgname=a2pdf
pkgver=1.13
pkgrel=2
pkgdesc="Converts ASCII text to PDF format, with optional page/line numbering"
arch=(any)
url=http://perl.jonallen.info/projects/a2pdf
license=(PerlArtistic)
depends=(perl-switch perl-pdf-api2)
source=("http://perl.jonallen.info/attachment/26/a2pdf-${pkgver}.tar.gz")
md5sums=('5f397b6faf2f29641e90fc308d6cff99')

build()
{
  cd a2pdf-${pkgver}
  perl Makefile.PL
  make
  make test
  make DESTDIR="$pkgdir" install
  cd "$pkgdir/usr/bin"
  mv site_perl/a2pdf .
  rmdir site_perl
  sed -i 's/^  perl_syntax   => 1/  perl_syntax   => 0/' a2pdf
}
