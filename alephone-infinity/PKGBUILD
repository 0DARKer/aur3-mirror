# Contributor: rabyte <rabyte__gmail>

pkgname=alephone-infinity
pkgver=1.0
pkgrel=3
pkgdesc="Marathon: Infinity scenario data files"
arch=('i686' 'x86_64')
url="http://trilogyrelease.bungie.org/"
license=('custom:"Marathon"')
depends=('alephone')
source=(http://alephone.cebix.net/downloads/AlephOne-Infinity-1.0.tar.gz \
	alephone-infinity.sh \
	LICENSE)
md5sums=('b9397f310836f099fd9d3df946e79e63' '5fb0dc83fec8cbc85323d05c4cd1ed05'
	 '3b51988e592917eab1e4730bfa82b19c')

build() {
  cd $startdir/src/AlephOne-Infinity-$pkgver

  # remove junk
  rm -f $pkgname *.pdf

  install -m755 -D ../$pkgname.sh $startdir/pkg/usr/bin/$pkgname
  mkdir -p $startdir/pkg/usr/share/alephone/scenarios/${pkgname/alephone-/}
  cp -r * $startdir/pkg/usr/share/alephone/scenarios/${pkgname/alephone-/}
  install -m644 -D ../LICENSE $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
}
