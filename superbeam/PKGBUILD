# Maintainer: Julien Humbert <julroy67@gmail.com>
pkgname=superbeam
pkgver=1.0.0
pkgrel=1
pkgdesc="The easiest and fastest way to share files with Android"
arch=('any')
url="http://superbe.am/"
license=('custom')
depends=('java-runtime')
makedepends=('gendesk')
source=(http://superbe.am/pc/linux/$pkgname-linux.tar.gz)
md5sums=('b3aad293bb824b540242ae14e4cbfee9')

prepare(){
	gendesk -n --pkgname "$pkgname" --pkgdesc "$pkgdesc" --name="SuperBeam"
}

package() {
	cd "$srcdir/$pkgname-linux"
	mkdir -p "$pkgdir/usr/bin"
        install -Dm755 "$srcdir/$pkgname-linux/start-superbeam.sh" "$pkgdir/usr/bin/superbeam"
	install -Dm644 "$srcdir/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
	install -Dm644 "$srcdir/$pkgname-linux/icon.png" "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
