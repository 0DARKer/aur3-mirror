pkgname='jlatexmath'
pkgver='1.0.1'
pkgrel='2'
pkgdesc='Java API to display mathematical formulas written in LaTeX.'
arch=('any')
url='http://forge.scilab.org/index.php/p/jlatexmath/'
license=('APACHE')
depends=('java-runtime')
source=("http://forge.scilab.org/index.php/p/jlatexmath/downloads/get/${pkgname}-${pkgver}.jar"
  "http://forge.scilab.org/index.php/p/jlatexmath/downloads/get/${pkgname}-fop-${pkgver}.jar"
)
noextract=(${pkgname}{,-fop}-${pkgver}.jar)
md5sums=('542ae9da1318d3b5717bf5fd506aeb40'
  '601fead0afca6020d1ce89a731b1b693')

package() {
  install -Dm644 "${srcdir}/${pkgname}-${pkgver}.jar" "${pkgdir}/usr/share/java/${pkgname}/${pkgname}.jar"
  install -Dm644 "${srcdir}/${pkgname}-fop-${pkgver}.jar" "${pkgdir}/usr/share/java/${pkgname}/${pkgname}-fop.jar"
}

