# Contributor: Thomas Dziedzic < gostrc at gmail >
# Contributor: Stefan Husmann <stefan-husmann at t-online dot de>

pkgname='jlatexmath'
pkgver='1.0.2'
pkgrel='1'
pkgdesc='Java API to display mathematical formulas written in LaTeX with embedded FOP plugin to generate pdf, ps, etc'
arch=('any')
url='http://forge.scilab.org/index.php/p/jlatexmath/'
license=('APACHE')
depends=('java-runtime')
source=("http://forge.scilab.org/index.php/p/jlatexmath/downloads/get/${pkgname}-${pkgver}.jar"
  "http://forge.scilab.org/index.php/p/jlatexmath/downloads/get/${pkgname}-fop-${pkgver}.jar"
)
noextract=(${pkgname}{,-fop}-${pkgver}.jar)
md5sums=('35e4d3a2c93328d585045cc057b3c913'
  'b04325218ca6b9ea73ce6f0fabfd3f28'
)

package() {
  install -Dm644 "${srcdir}/${pkgname}-${pkgver}.jar" \
    "${pkgdir}/usr/share/java/${pkgname}/${pkgname}.jar"
  install -Dm644 "${srcdir}/${pkgname}-fop-${pkgver}.jar" \
    "${pkgdir}/usr/share/java/${pkgname}/${pkgname}-fop.jar"
}

