# Maintainer: hauzer (alokinpwn at gmail dot com)
pkgname=pet2tgz
pkgver=2006
pkgrel=1
pkgdesc="Tool to convert Puppy Linux .pet files to .tar.gz archives."
arch=('any')
url="http://www.murga-linux.com/puppy/viewtopic.php?t=20495"
license=('Public Domain')
source=("http://www.mdn.fm/files/298739_yftgz/${pkgname}.gz")
md5sums=('590f657eec98c7eb19df60c5556910fa')

package() {
  mkdir -p "${pkgdir}/usr/bin"
  install -Dm755 "${srcdir}/${pkgname}" "${pkgdir}/usr/bin"
}
