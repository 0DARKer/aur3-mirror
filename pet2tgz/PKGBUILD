# Maintainer: hauzer (alokinpwn at gmail dot com)
pkgname=pet2tgz
pkgver=05052011
pkgrel=1
pkgdesc="Tool to convert Puppy Linux .pet files to .tar.gz archives."
arch=('any')
url="http://www.murga-linux.com/"
license=('Public Domain')
source=("http://www.mdn.fm/files/298742_ldjal/${pkgname}.tar.gz")
md5sums=('133b888f8ec9341c377aac0dae1f5fc5')

package() {
  mkdir -p "${pkgdir}/usr/bin"
  install -Dm755 "${srcdir}/${pkgname}" "${pkgdir}/usr/bin"
}
