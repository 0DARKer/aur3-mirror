pkgname=seed7
pkgver="05_20130120"
pkgrel=2
pkgdesc="An extensible, general purpose programming language."
arch=('i686' 'x86_64')
url="http://seed7.sourceforge.net"
license=('GPL2')
install=seed7.install
depends=('ncurses' 'libx11')
source=("http://sourceforge.net/projects/${pkgname}/files/${pkgname}/${pkgname}_${pkgver}/${pkgname}_${pkgver}.tgz")
md5sums=('3b3309189a63864a08dbf18830d32828')

build() {
  cd ${srcdir}/${pkgname}/src
	sed -ie 's!$(S7_LIB_DIR)!/usr/share/seed7/lib!; s!$(SEED7_LIBRARY)!/usr/share/seed7/lib!;' makefile
	make depend
	make -j4
	make s7c
}

package() {
	mkdir -p ${pkgdir}/usr/share/seed7
  cd ${srcdir}/${pkgname}/
	cp -a bin doc lib prg  ${pkgdir}/usr/share/seed7
	rm ${pkgdir}/usr/share/seed7/bin/*bat
	rm ${pkgdir}/usr/share/seed7/prg/s7
	rm ${pkgdir}/usr/share/seed7/prg/s7c
}
