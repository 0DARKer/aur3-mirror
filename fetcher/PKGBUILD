pkgname=fetcher
pkgver=0.4.1
pkgrel=1
pkgdesc="Fetches information about your music from metal-archives, discogs, etc."
arch=(any)
url="https://github.com/KenjiTakahashi/Fetcher"
license=('GPL3')
depends=(
    'python2'
    'pyqt'
    'python-beautifulsoup'
    'python-threadpool'
    'mutagen'
    )
makedepends=()
optdepends=()
provides=('fetcher')
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=("https://github.com/KenjiTakahashi/Fetcher/tarball/$pkgver")
noextract=()
md5sums=('48cb9e4623ecbb0be00d2668a62956c8')

build() {
    cd $srcdir/KenjiTakahashi-Fetcher-4187a3c
    python2 setup.py install --root=$pkgdir/ --optimize=1
}
