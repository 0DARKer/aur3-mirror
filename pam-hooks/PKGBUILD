# Maintainer: Dave Reisner <d@falconindy.com>

pkgname=pam-hooks
pkgver=0.2.0
pkgrel=1
pkgdesc="Linux-PAM module for login/logout hooks"
arch=('i686' 'x86_64')
url="http://upsilon.cc/~zack/blog/posts/2008/01/PAM_hooks/"
license=('GPL')
depends=('pam')
source=("http://upsilon.cc/~zack/hacking/software/${pkgname}/${pkgname}_${pkgver}.tar.gz")
md5sums=('55d6cd71e9d17afdff50bf30647f6e39')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
