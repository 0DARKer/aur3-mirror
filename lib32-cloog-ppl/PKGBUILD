pkgname=lib32-cloog-ppl
pkgname32=${pkgname/lib32-/}
pkgver=0.15.9
pkgrel=3
pkgrel32=2
pkgdesc="Library that generates loops for scanning polyhedra - lib32 version"
arch=(x86_64)
url="http://www.cloog.org/"
license=('GPL')
depends=('lib32-ppl>=0.10.2-3')
source=(ftp://ftp.archlinux.org/core/os/i686/${pkgname32}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
md5sums=('be004bc4f9a1ec44f7f9f9e49337b8be')

build() {
  mkdir -p $startdir/pkg/usr/lib32
  cp -rPf $startdir/src/usr/lib/* $startdir/pkg/usr/lib32
}

