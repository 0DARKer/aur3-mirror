# Maintainer: Alexander RÃ¸dseth <rodseth@gmail.com>

pkgname=lc-git
pkgver=6cb86c3
pkgrel=1
pkgdesc='Little commandline utility for listing directory contents in columns'
arch=('x86_64' 'i686')
url='http://github.com/xyproto/lc'
license=('MIT')
depends=('python')
source=("${pkgname%-git}::git://github.com/xyproto/lc.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/${pkgname%-git}"

  git describe --always | sed 's|-|.|g'
}

package() {
  cd "$srcdir/${pkgname%-git}"

  install -Dm755 lsc "$pkgdir/usr/bin/lsc"
  install -Dm644 LICENSE \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
