#!/bin/sh
map=`echo -e "tut1\nrun1\nrun2" | zenity --list --text="Choose the map you wanna launch" --column="Map"`

case $map in
tut1)
	/opt/purity/build/release-linux-i386/purity.i386 -nointro +sv_pure 0 +g_gametype 5 +map $map
	;;
*)
	/opt/purity/build/release-linux-i386/purity.i386 -nointro +sv_pure 0 +g_gametype 3 +map $map
	;;
esac
