# Maintainer: Elena ``of Valhalla'' Grandi <elena.valhalla@gmail.com>
pkgname=ttf-analecta
pkgver=3.06
pkgrel=2
pkgdesc="Font for ecclesiastic scripts (part of Unicode Fonts for Ancient Scripts)."
arch=('any')
url="http://users.teilar.gr/~g1951d/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
source=(http://users.teilar.gr/~g1951d/Analecta306.zip LICENSE)
md5sums=('ea51c5a1077005aeee7af735b72a9073'
         'bc1709dc3b1f6a7545ab366923e01a1c')
install=$pkgname.install

build()
{
    install -m 644 -D $srcdir/Analecta.ttf $pkgdir/usr/share/fonts/TTF/Analecta.ttf 
    install -m 644 -D $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE   
    install -m 644 -D $srcdir/Analecta.pdf  $pkgdir/usr/share/doc/$pkgname/Analecta.pdf
}

