# Maintainer: Sebastien Luttringer <seblu+arch@seblu.net>
# Contributor: Denis Smirnov <detanator@gmail.com>

pkgname=psi-git
pkgver=20111201
pkgrel=1
pkgdesc='A jabber client. GIT version'
url='http://psi-im.org/'
license=('custom')
arch=('i686' 'x86_64')
depends=('qt' 'aspell' 'libxss' 'openssl' 'dbus' 'zlib')
makedepends=("git")
conflicts=('psi' 'psi-svn')
provides=('psi' 'psi-svn')
source=()
md5sums=()

_gitroot="git://github.com/psi-im/psi.git"
_gitname="psi"

build() {
   msg "Connecting to $_gitroot ..."
  if [[ -d $_gitname ]] ; then
    cd $_gitname && git pull origin
    msg 'Updating iris ...'
    git submodule update
    msg 'The local files are updated.'
  else
    git clone "$_gitroot"
    cd $_gitname
    msg 'Getting iris ...'
    git submodule init
    git submodule update
  fi
   
  #[[ -d $srcdir/$_gitname-build ]] && rm -r $srcdir/$_gitname-build
  #cp -r $srcdir/$_gitname $srcdir/$_gitname-build

  #msg "Building $pkgname ..."
  #cd $srcdir/$_gitname-build

  ./configure --prefix=/usr
  make
}

package() {
  cd $_gitname
  make INSTALL_ROOT="$pkgdir" install

   # Copy Psi license
  install -D COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 ft=sh et:
