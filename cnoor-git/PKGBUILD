# Contributor: Sara <sara at archlinux dot us>
# Maintainer: aksr <aksr at t-com dot me>
pkgname=cnoor-git
pkgver=0.r89.0637608
pkgrel=1
pkgdesc="A simple framebuffer holy Quran viewer."
arch=('i686' 'x86_64')
#url="http://noor.sf.net/cnoor.html"
#url="http://litcave.rudi.ir/"
url="http://repo.or.cz/w/cnoor.git"
license=('GPL')
depends=('pango')
optdepends=('gtk2: to run in X11' \
            'ttf-sil-scheherazade: quran font' \
            'ttf-dejavu: reader font')
makedepends=('git')
provides=('cnoor')
conflicts=('cnoor')
install=${pkgname}.install
source=('config.h' \
        'cnoor.1')
md5sums=('a8f8719add1fedf9f65d4c5a1aa57e30'
         'c5e914abff7843191998a5a3da0c386d')

_gitroot=git://repo.or.cz/cnoor.git
_gitname=cnoor

pkgver() {
  cd "$srcdir/$_gitname"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build(){
  cd "${srcdir}"
  msg "Connecting to GIT server...."
  
  if [[ -d ${_gitname} ]]; then
    cd "${_gitname}"
    git pull origin
    msg "The local files are updated."
  else
    git clone "${_gitroot}"
    cd "${_gitname}"
  fi
  msg "Checkout done or server timeout"
  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  cp "${srcdir}"/config.h config.h

  msg "Starting make..."
  make all
}

package(){
  install -Dm755 "${srcdir}/${_gitname}-build/${_gitname}" "${pkgdir}/usr/bin/${_gitname}"

  # Install man page
  install -Dm644 "${srcdir}/${_gitname}.1" "$pkgdir/usr/share/man/man1/${_gitname}.1"
}

# vim:set ts=2 sw=2 et:
