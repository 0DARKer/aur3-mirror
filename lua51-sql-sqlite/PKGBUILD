pkgname=lua51-sql-sqlite
pkgver=2.3.0
pkgrel=1
arch=('i686' 'x86_64')
url='http://www.keplerproject.org/luasql/'
license=('MIT')
pkgdesc='SQLite module for Lua 5.1'
depends=('lua51' 'sqlite')
makedepends=('luarocks5.1')

package() {
  mkdir "$pkgdir/usr"
  luarocks-5.1 --tree="$pkgdir/usr" install luasql-sqlite3
}

