# Maintainer: megadriver <megadriver at gmx dot com>

pkgname=firefox-i18n-es-es
pkgver=4.0
pkgrel=1
pkgdesc="Castilian Spanish language packs for Firefox"
arch=('any')
license=('MPL')
url="http://www.mozilla.com/"
depends=("firefox>=$pkgver")
conflicts=('firefox-i18n')
source=("ftp://ftp.mozilla.org/pub/mozilla.org/firefox/releases/$pkgver/linux-i686/xpi/es-ES.xpi")
noextract=('es-ES.xpi')
md5sums=('3e86106fa213ae3828053df6e969dd52')

build() {
  install -D -m644 "$srcdir/es-ES.xpi" "$pkgdir/usr/lib/firefox-$pkgver/extensions/langpack-es-ES@firefox.mozilla.org.xpi"
}
