# Maintainer: Micha Alt <micha.tucker at gmail dot com>

_npmname=generator-gulp-angular
pkgname=nodejs-$_npmname
pkgver=0.4.0
pkgrel=1
pkgdesc="Yeoman generator for Gulp & Angular"
arch=('any')
url="https://github.com/yeoman/generator-angular"
license=('MIT')
depends=('nodejs-yeoman' 'nodejs-gulp' 'nodejs-bower')
optdepends=('ruby-sass: needed to build projects'
            'java-runtime: e2e protractor tests')
source=(https://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=('53b7b2d9b72af99bfc1e07489b694c976e0ee0a2')

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install --user root -g --prefix "$pkgdir/usr" $_npmname@$pkgver
  rm -rf "$pkgdir"/usr/bin
  rm -rf "$pkgdir"/usr/lib/node_modules/{grunt-cli,bower,yo}
}

