#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pkg_scripts
pkgver=2013.11
pkgrel=1
pkgdesc='A collection of pacman and package-related utilities.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pkg_scripts"
depends=(python3 pyalpm)
source=(
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2013.11.tar.xz
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2013.11.tar.xz.sig
)
sha512sums=(
  cf8bb7db70857b6b0840c005a4a6d7de55c4f5e229bee814c421425d1c1ff1ed94dbd6122bb1438182218919035f2823275e9633f6bf8bf484741b580187f9df
  599160987b4d90cae13bc3175abcec7e223c0ac045511312c3a7f2f9e5d7c88ba5c235171d1e0562b9596e238cae24acacb4e4adf87633171b992b6b25d86356
)
md5sums=(
  086db663d33b89d0ddfdf3ed6a31a085
  d41d81352662f58875c2821620162f46
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver/src"
  for pkg in pkg-*
  do
    name="${pkg##*/}"
    install -Dm755 "$name" "$pkgdir/usr/bin/$name"
  done
}

