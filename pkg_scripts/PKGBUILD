pkgname=pkg_scripts
pkgver=2014.7.28
pkgrel=1
pkgdesc='A collection of pacman and package-related utilities.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pkg_scripts"
depends=(python3 pyalpm)
source=(
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2014.7.28.tar.xz
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2014.7.28.tar.xz.sig
)
sha512sums=(
  0f5a5c8e5e8523650962beb5a72a457024f9a07fd3b5081c89d1ea8e15e103ba8c6de6c3b2d23df57a27195ff11ae7129414473edad5115af48d9a09dd811470
  373bb7e731f8c4090d5abe855b61f5aa4e351d2126df614f63424c1edc1ed9526a003ef0f86878230bf7fdf00dda762809f5c74c7b09269dcd87f9dbea79f184
)
md5sums=(
  beec6a48116d9631488d29ab4f5d628e
  92a09c7c0ab174f7d4e764bd8783949e
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver/src"
  for pkg in pkg-*
  do
    name="${pkg##*/}"
    install -Dm755 "$name" "$pkgdir/usr/bin/$name"
  done
}

