#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pkg_scripts
pkgver=2014.12
pkgrel=1
pkgdesc='A collection of pacman and package-related utilities.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pkg_scripts"
depends=(python3 pyalpm)
source=(
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2014.12.tar.xz
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2014.12.tar.xz.sig
)
sha512sums=(
  28a84e8c25b78c6235035f47ef1ad20bb1dd78426643b09f39ca39e67b673ab6c22ebf9f85d849575c78c77f887bbba2bf2fac7d96f3c5bfc5e0a9ebf3898eb2
  e0c102a4dd93d230d71d93b84be770e3428a9e52421a930a5e6998de1f108d8ecfcdd7ef04f5768eb20c297545dc9ef90806975ebd8b22171d5902063a935f56
)
md5sums=(
  040b47a9fe0db3972200e265f2954227
  0b1e7d0349122542b7dfc19eccdf3182
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver/src"
  for pkg in pkg-*
  do
    name="${pkg##*/}"
    install -Dm755 "$name" "$pkgdir/usr/bin/$name"
  done
}

