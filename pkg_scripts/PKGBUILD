#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pkg_scripts
pkgver=2014.4
pkgrel=1
pkgdesc='A collection of pacman and package-related utilities.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pkg_scripts"
depends=(python3 pyalpm)
source=(
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2014.4.tar.xz
  http://xyne.archlinux.ca/projects/pkg_scripts/src/pkg_scripts-2014.4.tar.xz.sig
)
sha512sums=(
  89e4f1187813083395d50ad5ea84cefba185f614a8624b44dc2e0761ed92baf7537a4b6efc303bfe00704078edacc38f0fa2b56f5d0bf3097e0ba00ae3c4656b
  9c14887d957db558839e38c7c5d6c94880f2e486799649cb44d7feab23ec51f9a17c9714d14ae4966b1f664b1af05d95c6271c355e4bcb8da4bf7359efdeeed6
)
md5sums=(
  1c849e67181f875dfa47e74e076f5b34
  3b3b00edc2f0138c12c3eb9272091056
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver/src"
  for pkg in pkg-*
  do
    name="${pkg##*/}"
    install -Dm755 "$name" "$pkgdir/usr/bin/$name"
  done
}

