# Maintainer: Adam Eberlin < ae at adameberlin dot com >

pkgname=ifuse-git
pkgver=20130803
pkgrel=2
pkgdesc="iFuse is a FUSE filesystem driver which uses libimobiledevice to connect to the Apple iPhone and iPod Touch."
url="https://github.com/libimobiledevice/ifuse"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libimobiledevice' 'gnutls' 'libusb' 'fuse' 'glib2' 'libxml2' 'libxml++')
makedepends=('gcc' 'git' 'automake' 'autoconf' 'fakeroot' 'make' 'pkgconfig')
provides=('ifuse')

_gitroot="git://github.com/libimobiledevice/ifuse"
_gitname="ifuse"

build() {

  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d ${srcdir}/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "Local repository updated."
  else
    git clone $_gitroot $_gitname
  fi
    
  msg "GIT checkout done or server timeout"

  msg "Removing old build directory..."
  rm -Irf ${srcdir}/$_gitname-build

  msg "Creating new build directory..."
  cp -r ${srcdir}/$_gitname ${srcdir}/$_gitname-build

  cd ${srcdir}/$_gitname-build

  msg "Applying patches..." 
# patch -p1 < ${startdir}/patchfile.diff

  msg "Starting make..."

  [[ "${CARCH}" == 'x86_64' ]] && export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/local/lib64/pkgconfig/

  ./autogen.sh
  ./configure

  make || return 1

}

package() {

  cd ${srcdir}/$_gitname-build
  make DESTDIR=${pkgdir} install || return 1

}
