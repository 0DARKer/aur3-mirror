pkgname=wrapaur
pkgver=1.0
pkgrel=2
pkgdesc="A simple bash script pacman and cower wrapper to help with everyday package tasks"
arch=('i686' 'x86_64')
url="https://aur.archlinux.org/packages/wrapaur"
license=('GPL')
depends=('bash' 'cower' 'pacman' 'sudo' )
source=("wrapaur")
md5sums=('6626562ff50ea87312eb3deb39590f5f')

package() {
  install -Dm755 wrapaur "$pkgdir/usr/bin/wrapaur"
}
