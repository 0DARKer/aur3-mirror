build() {
  mkdir -p "${pkgdir}/usr/share/xml/w3c/mathml2"
  install mathml2.dtd "${pkgdir}/usr/share/xml/w3c/mathml2/"
  install *.mod "${pkgdir}/usr/share/xml/w3c/mathml2/"
  install *.ent "${pkgdir}/usr/share/xml/w3c/mathml2/"
}
