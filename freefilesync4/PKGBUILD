# Allen Choong <allen dot choong at gmail dot com>
pkgname=freefilesync4
pkgver=2
pkgrel=1
pkgdesc="FreeFileSync, synchronize tool, version 4"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/freefilesync/"
license=('GPLv3')
depends=(gtkmm wxgtk boost)
conflicts=(freefilesync)
source=("http://downloads.sourceforge.net/project/freefilesync/freefilesync/v4.$pkgver/FreeFileSync_v4.${pkgver}_source.zip" FreeFileSync.desktop parser.h.patch)
md5sums=('b739aeb169d2bdfeb6d1058259df23f6'
         'dd440c4cdce08b3aa186f83bda58c49d'
         '933381d52c46b7d8bb14ce351daa7390')

build () {
  cd ${srcdir}
  patch zenXml/zenxml/parser.h ../parser.h.patch
  make
  make DESTDIR=${pkgdir} install
  install -Dm644 FreeFileSync.desktop $pkgdir/usr/share/applications/FreeFileSync.desktop 
}
