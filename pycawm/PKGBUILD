pkgname=pycawm
pkgver=0.2
pkgrel=1
pkgdesc="A reparenting window manager written in python which can be easily extended/modified."
arch=('i686' 'x86_64')
conflicts=('pycawm-svn')
license=('GPL3')
url="http://pycawm.last-exile.org"
depends=('python>=2.5' 'python-xlib' 'pil')
makedepends=()
install=$pkgname.install
source=("$url/sources/$pkgname-$pkgver.tar.bz2")
md5sums=('2daaa916b86d946d5127433060ee1d35')

build() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$startdir/pkg prefix=/usr install || return 1
}
