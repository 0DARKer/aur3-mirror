# Maintainer: Renan Manola <rmanola@gmail.com>

pkgname=nautilus-image-manipulator
pkgver=0.6
pkgrel=2
pkgdesc="Resize and send images from Nautilus3"
arch=('i686' 'x86_64')
url="https://launchpad.net/nautilus-image-manipulator"
license=('GPL-3')
depends=('python2' 'nautilus>=3.0.0' 'imagemagick' 'python-nautilus')
makedepends=('python2' 'python-distutils-extra>=2.18')
install=$pkgname.install
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz
	nautilus_image_manipulatorconfig.patch
	NautilusImageManipulatorDialog.patch)
md5sums=('b15afea912f46c3aa522fba4834a1a51' '93248d45177280389909a597db5ec7ab' '82381a27bec9f8f30f0f7a79a736ae1a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py bdist
  cd "${pkgdir}"
  tar -zxvf "$srcdir/$pkgname-$pkgver/dist/$pkgname-$pkgver.linux-$CARCH.tar.gz"
  patch -p0 < ../nautilus_image_manipulatorconfig.patch
  patch -p0 < ../NautilusImageManipulatorDialog.patch
}
