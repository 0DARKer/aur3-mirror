# Contributor: skatiger <skatiger [at] gmail [dot] com> 

pkgname=deepin-scrot-git
pkgver=20111231 # git auto added
pkgrel=2
pkgdesc="a screen snapshot tool, for deepin linux"
arch=("i686" "x86_64")
url="http://www.linuxdeepin.com"
license=("LGPLv3")
depends=('python2' 'gconf' 'pygtk' 'python-xlib')
makedepends=('git')
conflicts=('deepin-scrott')
provides=('deepin-scrot')

_gitroot="git://github.com/lovesnow/deepin-scrot.git"
_gitname="deepin-scrot"

source=('deepin-scrot.sh')
md5sums=('c6e4da4624c5b16d5d53fd35d2ca4ae3')
build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d ${_gitname}/.git ] ; then
    cd ${_gitname}

    # Change remote url to anongit
    if [ -z $( git branch -v | grep anongit ) ] ; then
        git remote set-url origin ${_gitroot}
    fi
    
    git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi

  rm -rf "$srcdir/${_gitname}-build"
  git clone "$srcdir/${_gitname}" "$srcdir/${_gitname}-build"

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/${_gitname}-build"

  sed -i -re "1s/python?/python2/" src/*.py
  chmod +x src/deepinScrot.py
  #
  # locale
  #
  pofiles=`find -depth -type f -name *.po`
  for po in $pofiles; 
  do 
    mofile=`echo $po | sed 's/.po/.mo/'`
    msgfmt -o $mofile $po
  done

  #
  # install
  #
  
  mkdir -p $pkgdir/usr/share/deepin-scrot
  # src
  cp -r src $pkgdir/usr/share/deepin-scrot
  # theme
  cp -r theme $pkgdir/usr/share/deepin-scrot
  # locale
  cp -r locale $pkgdir/usr/share/deepin-scrot
  
  cp AUTHORS $pkgdir/usr/share/deepin-scrot
  cp ChangeLog $pkgdir/usr/share/deepin-scrot
  cp README $pkgdir/usr/share/deepin-scrot

  #
  # link
  #
  install -Dm755 ../deepin-scrot.sh $pkgdir/usr/bin/deepin-scrot
}

# vim:set ts=2 sw=2 et:
