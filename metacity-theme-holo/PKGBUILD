pkgname=metacity-theme-holo
pkgver=20120127
pkgrel=1
pkgdesc="A Metacity theme from tiheum, the Faenza icon set creator, that mimics Ice Cream Sandwich (Android 4) theme."
url="http://tiheum.deviantart.com/art/Holo-280076980"
license=('GPL3')
arch=('any')
source=('http://www.deviantart.com/download/280076980/holo_by_tiheum-d4mr0s4.zip')
md5sums=('43c8242c2681c71e4c6549c7eaa6a9b5')

package() {
    cd $srcdir
    mkdir -p $pkgdir/usr/share/themes/Holo/
    find Holo/metacity-1/ -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}
