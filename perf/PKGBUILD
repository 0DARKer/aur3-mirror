# Maintainer: Sebastien Luttringer <seblu+arch@seblu.net>

pkgname=perf
pkgver=3.1
pkgrel=1
pkgdesc="Linux kernel $pkgver performance tool"
license=('GPL2')
arch=('i686' 'x86_64')
url='http://www.kernel.org'
options=(!strip)
depends=('python2' 'perl' 'libnewt' 'elfutils')
makedepends=('asciidoc' 'xmlto')
source=("http://ftp.kernel.org/pub/linux/kernel/v3.0/linux-$pkgver.tar.bz2") 
md5sums=('8d43453f8159b2332ad410b19d86a931')

build() {
  cd linux-$pkgver/tools/perf
  make PYTHON=python2 DESTDIR="${pkgdir}/usr" all man
}

package() {
  cd linux-${pkgver}/tools/perf
  make PYTHON=python2 DESTDIR="${pkgdir}/usr" install install-man
}
# vim:set ts=2 sw=2 ft=sh et:
