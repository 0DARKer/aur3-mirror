# Maintainer: osily <ly50247 at gmail dot com>

pkgname=yong
pkgver=20110321
pkgrel=1
pkgdesc="A Chinese input method"
arch=(i686)
url="http://yong.uueasy.com/"
license=("custom")
source=("http://50.bak.115cdn.com/pickdown/7a05bb40003c0d9728f24e3af7efaa424d92bb83/M00/0A/BC/tzyQEE2HWOoAAAAAACFkoDeyxSY3060420/yong-lin-20110321.7z?file=yong-lin-20110321.7z&key1=4d929f63&key2=3231312e3130312e35352e313833")
md5sums=("c98f7f3546589c4c68060c8f503f6ec0")
makedepends=("p7zip")
build() {
  cd $srcdir/
  7z x $pkgname*
}

package() {
  mkdir -p $pkgdir/usr/bin/
  mkdir -p $pkgdir/usr/lib/
  cd $srcdir
  mv yong $pkgdir/usr/lib
  ln -sf $pkgdir/usr/lib/yong/yong $pkgdir/usr/bin/yong
  ln -sf $pkgdir/usr/lib/yong/yong-config $pkgdir/usr/bin/yong-config
  ln -sf $pkgdir/usr/lib/yong/libl.so $pkgdir/usr/lib/libl.so
}

