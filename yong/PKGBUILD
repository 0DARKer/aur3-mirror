# Maintainer: osily <ly50247 at gmail dot com>

pkgname=yong
pkgver=20110408
pkgrel=1
pkgdesc="A Chinese input method"
arch=(i686 x86_64)
url="http://yong.uueasy.com/"
license=("freeware")
source=("http://ly50247.googlecode.com/files/yong-lin-${pkgver}.7z")
sha1sums=("80f4fdda47071fddc5acd3fed34bfc4e36401e83")
makedepends=("p7zip")
build() {
  cd $srcdir/
  7z x $pkgname*
  cd $pkgname
  [[ "$CARCH" = "x86_64" ]] && mv l64/* . 
  rm -r l64
  mv yong.chm README.txt doc

}

package() {
  mkdir -p $pkgdir/usr/bin/
  mkdir -p $pkgdir/usr/lib/
  cd $srcdir
  mv yong $pkgdir/usr/lib
  cd $pkgdir/usr/bin
  ln -sf /usr/lib/yong/yong .
  ln -sf /usr/lib/yong/yong-config .
  cd $pkgdir/usr/lib
  ln -sf /usr/lib/yong/libl.so .
}

# vim:set ts=2 sw=2 et:
