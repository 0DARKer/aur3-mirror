# Contributor: Giorgio Gilestro <giorgio@gilest.ro>

pkgname=wxpython-demo
pkgver=2.8.12.0
pkgrel=2
pkgdesc="The source code for the wxPython demo and other sample applications."
url="https://bbs.archlinux.org/viewtopic.php?pid=606881"
depends=('wxpython')
license=('GPL')
arch=('any')
source=("http://downloads.sourceforge.net/wxpython/wxPython-demo-2.8.12.0.tar.bz2" "wxpython-demo.desktop")
md5sums=('f91d7cada1f8fca275ceb4f45d21fe3c' 'fa78a5fe8cb150ef7e8629c11a4919be')
options=(!strip)

build() {
	mkdir -p $pkgdir/opt/wxpython-demo
	mkdir -p $pkgdir/usr/share/applications

	cd $srcdir/wxPython-$pkgver/
	cp -r *  $pkgdir/opt/wxpython-demo/

	cp $srcdir/wxpython-demo.desktop $pkgdir/usr/share/applications/
}
