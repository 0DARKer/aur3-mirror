# Updated by: Tapio Saarinen <admin@bitlong.org>

pkgname=shoes-git
pkgver=20101126
pkgrel=1
pkgdesc="Informal graphics and windowing toolkit running on Windows, Mac OS X and Linux."
url="http://shoesrb.com/"
arch=(any)
license="MIT"
depends=('ruby' 'giflib' 'gtk2' 'cairo' 'pixman' 'pango' 'libjpeg' 'curl' 'portaudio')
makedepends=('git')
conflicts=('shoes')
replaces=('shoes')
provides=('shoes')
backup=()
install=
source=()
md5sums=()

_pkgname=shoes
_gitrepo="git://github.com/shoes/shoes.git"

build() {
  cd $srcdir

  msg "Getting source..."
  if [ -d $_pkgname ]; then
    cd $_pkgname
    git pull || return 1
  else
    git clone $_gitrepo $_pkgname || return 1
    cd $_pkgname
  fi

  rake
  cd dist

  mkdir -p $pkgdir/usr/{bin,lib/shoes}
  cp -r * $pkgdir/usr/lib/shoes/

  ln -s /usr/lib/shoes/shoes $pkgdir/usr/bin/shoes
  install -D -m644 $srcdir/$_pkgname/COPYING $pkgdir/usr/share/licenses/$_pkgname/COPYING
}
