# Contributor: RaK dimitri-b@orange.fr

pkgname=memwrite
pkgver=1.0.1
pkgrel=1
pkgdesc="An ArtMoney hexeditor clone"
arch=('i686' 'x86_64')
url="http://en.congelli.eu/prog_info_memwrite.html"
license=('GPL')
depends=('wxgtk' 'gcc-libs')
source=(http://fr.congelli.eu/download/memwrite/${pkgname}-${pkgver}.tar.gz)
md5sums=('e77aee8c7374418dc0ca96e2f02f2562')

build() {
cd "${srcdir}/${pkgname}-${pkgver}"
./configure --prefix=/usr
make || return 1
}

package() {
cd "${srcdir}/${pkgname}-${pkgver}"
make DESTDIR=${pkgdir} install || return 1
}
