# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rake-compiler
pkgver=0.7.5
pkgrel=1
pkgdesc="Provide a standard and simplified way to build and package Ruby extensions (C, Java) using Rake as glue."
arch=(any)
url="http://github.com/luislavena/rake-compiler"
license=('MIT')
depends=('ruby')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/rake-compiler-$pkgver.gem)
noextract=(rake-compiler-$pkgver.gem)
md5sums=('ebbae09d4f32fbdd3b6f116c4d254de8')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" rake-compiler-$pkgver.gem
  
  mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
