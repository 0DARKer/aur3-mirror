pkgname='perl-cpanplus'
pkgver='0.9110'
pkgrel='1'
pkgdesc="Ameliorated interface to the CPAN"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-cpanplus-dist-arch')
makedepends=()
url='http://search.cpan.org/dist/CPANPLUS'
source=('http://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/CPANPLUS-0.9110.tar.gz')
md5sums=('3858aacbe9a54c99eb3ebc383df7c6ab')
sha512sums=('72518a0b5e4ecd3febe1f44a4d34d9fad577aa779ddb4950fbc2d53c89dbd9107d905d4238aa3717875cfdd95389692f04a71c79c08d0b2dc5dab0eafcc3c993')
_distdir="${srcdir}/CPANPLUS-0.9110"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

