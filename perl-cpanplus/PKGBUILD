options=('!emptydirs')
depends=('perl>=0')
makedepends=()
url='http://search.cpan.org/dist/CPANPLUS'
source=('http://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/CPANPLUS-0.9144.tar.gz')
