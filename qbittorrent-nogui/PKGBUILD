pkgname=qbittorrent-nogui
pkgver=2.6.5
pkgrel=1
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library, w/o gui, stable version"
arch=('i686' 'x86_64')
url="http://www.qbittorrent.org/"
license=('GPL')
depends=('libtorrent-rasterbar' 'curl' 'xdg-utils' 'zziplib' 'boost>=1.41.0')
source=(http://freefr.dl.sourceforge.net/project/qbittorrent/qbittorrent/qbittorrent-${pkgver}/qbittorrent-${pkgver}.tar.gz)
md5sums=('42d574b9b0be46a5c4d65fe6fbc62972')
conflicts=('qbittorrent-nogui-svn')


build() {
	cd  $startdir/src/${pkgname/-nogui/}-${pkgver}/
        ./configure --prefix=/usr --disable-gui
 	 make
}

package() {
	cd  $startdir/src/${pkgname/-nogui/}-${pkgver}
	make INSTALL_ROOT=${pkgdir} install
}
