pkgname=autopanogiga
_pkgname=AutopanoGiga
pkgver=2.5.0
pkgrel=1
pkgdesc='The program for creating panoramic images.'
arch=('i686' 'x86_64')
url='http://kolor.net/'
license=('custom: "commercial"')
depends=("qt>=4")
install=autopanogiga.install
case $CARCH in
  i686)
    source=("AutopanoGiga_Linux32_250_2011-02-02.tar.gz::http://download.kolor.com/apg/stable/linux32tar"
      "$pkgname" "$pkgname.desktop")
    md5sums=('9dca8d3d8377f766f4a72e38aaa22dfb'
         '60b7358a58c528a1e3589a82f2835bf5'
         'f5c58397f9d2df59c5fc7ee0db2f73af')
  ;;
  x86_64)
    source=("AutopanoGiga_Linux64_250_2011-02-02.tar.gz::http://download.kolor.com/apg/stable/linux64tar"
    "$pkgname" "$pkgname.desktop")
    md5sums=('94f247308034edc4107f707fd790724e'
         '60b7358a58c528a1e3589a82f2835bf5'
         'f5c58397f9d2df59c5fc7ee0db2f73af')
  ;;
esac
package(){
  cd "$srcdir/$_pkgname" || return 1
  install -dm755 $pkgdir/opt/$pkgname || return 1
  tar -c ./ | tar -x -C $pkgdir/opt/$pkgname || return 1
  install -Dm755 ../$pkgname $pkgdir/usr/bin/$pkgname || return 1
  rm -f $pkgdir/opt/$pkgname/libQt* || return 1
  install -Dm644 "$srcdir/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
}

