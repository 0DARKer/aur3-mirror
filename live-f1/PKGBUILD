# Maintainer: Samhain

pkgname=live-f1
pkgver=0.2.10
pkgrel=1
pkgdesc="Linux client for viewing the live timing feed of official Formula-1 Web site."
url="http://launchpad.net/live-f1/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('neon>=0.24' 'heimdal')
source=(http://launchpad.net/live-f1/0.2/$pkgver/+download/live-f1-$pkgver.tar.gz)
md5sums=('4b7a1578b7ab115c0dc14eb79dbbc123')

build() {
  cd "$srcdir/live-f1_$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
