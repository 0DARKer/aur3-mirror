pkgname=pythontoolkit
pkgver=11.04.06
pkgrel=1
pkgdesc="PythonToolkit (PTK) is an interactive environment for python"
url="http://pythontoolkit.sourceforge.net/"
license=('GPL3')
depends=('python>=2.6' 'wxpython>=2.8')
optdepends=()
arch=('i686' 'x86_64')
source=("http://sourceforge.net/projects/pythontoolkit/files/Python%20Toolkit/ptk%20v11.04/PythonToolkit-${pkgver}.zip")
options=(!emptydirs)
md5sums=('4354437b75b9e9f55d855f2f8283c79e')

build() {
  cd "$srcdir/PythonToolkit-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}