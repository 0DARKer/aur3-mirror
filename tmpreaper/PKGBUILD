pkgname=tmpreaper
pkgver=1.6.13
pkgrel=1
pkgdesc="Cleans up files in directories based on their age"
arch=('i686' 'x86_64')
url="http://packages.debian.org/sid/tmpreaper"
license=('GPL2')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://ftp.de.debian.org/debian/pool/main/t/tmpreaper/${pkgname}_${pkgver}.tar.gz)
noextract=()
md5sums=('f5799a7f142f9fa49586ae3da2bba222')
sha1sums=('6559932b8fd24ff07eb335b43668ea65ebad0dfb')
sha256sums=('200ac7e9743386a78299e3d691144a3bfd9ca60a726bb6910686dcd00fa13f33')
sha384sums=('ae3abd95817f669293bfbe3b444428986a2d1eb1221d265da49dcd4da148a0ad87ae3ff2b0c0a8b7fcca91a3875d3545')
sha512sums=('daaabf9c63a114aba7556a430ead91e1e736b0cbf791df9c11c8536507af2b39132560f26d70fe392ae5aceaa6ba53a6a79268f28ca080fc8be46ad0e785c4b7')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

