# Contributor: Wido <widomaker2k7@gmail.com>

pkgname=webreader
pkgver=0.8_beta
pkgrel=1
pkgdesc="it'is the most popular cross platform rss reader and is a full featured Google reader desktop client."
arch=('i686' 'x86_64')
url="http://www.getwebreader.com"
license=('custom')
depends=('adobe-air')
makedepends=('unzip')
source=('http://www.getwebreader.com/air/download/WebReader.air'
        'webreader.desktop' 'webreader.sh')

build()
{
   cd ${srcdir}/

   install -m644 -D ${srcdir}/assets/img/app/web_reader_128.png ${startdir}/pkg/usr/share/pixmaps/$pkgname.png
   install -m644 -D ${srcdir}/WebReader.air ${startdir}/pkg/opt/$pkgname/$pkgname.air
   install -m755 -D ${srcdir}/$pkgname.sh ${startdir}/pkg/usr/bin/$pkgname
   install -m644 -D ${srcdir}/$pkgname.desktop ${startdir}/pkg/usr/share/applications/$pkgname.desktop
}
md5sums=('221b81dd9442db7c4cf13d66a0c42571'
         '310dac40980bf130c70ae2be7766e0d9'
         '2523a59173c48bcb742318364fe8d88d')
