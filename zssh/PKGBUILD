# Contributor: Ross Eldridge <ptepid@ptepid.org>
pkgname=zssh
pkgver=1.5c
pkgrel=3
pkgdesc="SSH and Telnet client with ZMODEM file transfer capability"
arch="i686 x86_64"
license="GPL"
url="http://zssh.sourceforge.net/"
depends=('readline')
source=(http://switch.dl.sourceforge.net/sourceforge/zssh/$pkgname-$pkgver.tgz)
md5sums=('9f140ec2705a96d6a936b7dca0e8dd13')

build() {
        cd $startdir/src/$pkgname-$pkgver

	mkdir -p $startdir/pkg/usr/bin
	mkdir -p $startdir/pkg/usr/man/man1
        ./configure --prefix=$startdir/pkg/usr
        make || return 1
        make install
	chmod a+r $startdir/pkg/usr/bin/*
}

