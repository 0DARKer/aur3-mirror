# Contributor: Sergio Montesinos <sermonpe@yahoo.es>

pkgname=kdedecor-linstasquared
pkgver=0.1
pkgrel=1
pkgdesc="Linsta Squared is a native window decoration for KDE desktop"
arch=(i686 x86_64)
url="http://kde-look.org/content/show.php/Linsta+Squared?content=51287"
license=('GPL')
groups=()
depends=('kdebase' 'kdelibs')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://ferencnf.googlepages.com/linstasquared-$pkgver.tar.gz)
noextract=()
md5sums=(2dad4dfe1b6e2b869f55e50f4ec87dc7)

build() {
  cd "$startdir/src/linstasquared-$pkgver"

  ./configure --prefix=`kde-config --prefix`
  make || return 1
  make DESTDIR="$startdir/pkg" install
}

