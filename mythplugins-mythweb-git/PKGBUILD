# Contributor: vacapetr@centrum.cz

pkgname=mythplugins-mythweb-git
pkgver=20120410
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.mythtv.org"
license=('GPL')
makedepends=("mythtv-git" 'git')
pkgdesc="Web interface for MythTV's backend 0.25-fixes"
depends=("mythtv-git")
optdepends=('php-apache'
              'lighttpd')
replaces=('mythplugins-mythweb')
conflicts=('mythplugins-mythweb')

_gitname="mythweb"
_gitroot="git://github.com/MythTV/mythweb.git"

build() {
    msg "Connecting to GIT server...."

if [ -d $_gitname/.git ]; then
    cd $_gitname
    git pull && git pull origin
    msg "The local files are updated."
else
    git clone -b fixes/0.25 "$_gitroot" "$_gitname"
    #git clone "$_gitroot" "$_gitname"
fi

msg "GIT checkout done or server timeout"
msg "Starting make..."

rm -rf "$srcdir/$_gitname-build"
git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

mkdir -p ${pkgdir}/usr/local/share
ln -sv /usr/share/mythtv ${pkgdir}/usr/local/share/mythtv
mkdir -p "$pkgdir/srv/http/mythweb"/{image_cache,php_sessions,data}
cp -R "${srcdir}/$_gitname-build"/* "$pkgdir/srv/http/mythweb"
chown -R http:http "$pkgdir/srv/http/mythweb"
chmod g+rw "$pkgdir/srv/http/mythweb"/{image_cache,php_sessions,data}
}

