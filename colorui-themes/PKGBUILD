# Maintainer: FadeMind <fademind@gmail.com>

_name=Color-UI
_ver=1.0.3-RC-2
pkgname=colorui-themes
pkgver=1.0.3rc2
pkgrel=1
pkgdesc="Package contains 3 version of gtk3,gtk2,metacity,unity,xfwm4 and openbox theme."
arch=('any')
url="http://opendesktop.org/content/show.php?content=168876"
license=('GPL3')
depends=('gnome-themes-standard' 'gtk-engine-murrine' 'gdk-pixbuf2')
makedepends=('unzip')
source=("${pkgname}-${pkgver}.zip::http://opendesktop.org/CONTENT/content-files/168876-${_name}-${_ver}.zip"
        'LICENSE')
sha256sums=('859ff430dacef621e4ea499e66fab979f69d8288a7416a7dfb4c982c73c4ec64'
            '8ceb4b9ee5adedde47b31e975c1d90c73ad27b6b165a1dcd80c7c545eb65b903')

package() {
  install -dm755 "${pkgdir}/usr/share/themes"
  install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  cp -rf "${srcdir}/${_name}" "${pkgdir}/usr/share/themes"
  find ${pkgdir}/usr -type f -exec chmod 644 {} \;
  find ${pkgdir}/usr -type d -exec chmod 755 {} \;
} 
