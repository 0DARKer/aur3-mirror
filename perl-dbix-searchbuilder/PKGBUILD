# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-dbix-searchbuilder
pkgver=1.62
pkgrel=1
pkgdesc="Encapsulate SQL queries and rows in simple perl objects"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~ruz/DBIx-SearchBuilder-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-dbd-sqlite' 'perl-want' 'perl-cache-simple-timedexpiry' 'perl-capitalization'
         'perl-clone' 'perl-dbix-dbschema' 'perl-class-accessor')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/R/RU/RUZ/DBIx-SearchBuilder-$pkgver.tar.gz")
md5sums=('c1b847ebb9c25f7576693632cdd2f018')

build() {
	cd "$srcdir/DBIx-SearchBuilder-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/DBIx-SearchBuilder-$pkgver"

	make install DESTDIR="$pkgdir"
}
