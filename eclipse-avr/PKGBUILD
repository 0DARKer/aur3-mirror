pkgname=eclipse-avr
pkgver=2.4.0.beta
pkgrel=1
pkgdesc="AVR Plugin for Eclipse"

arch=('any')

url="http://avr-eclipse.sourceforge.net/wiki/index.php/The_AVR_Eclipse_Plugin"

license=("GPL")

depends=('eclipse' 'eclipse-cdt' 'avr-gcc' 'avr-libc' 'avrdude')

source=(http://downloads.sourceforge.net/project/avr-eclipse/avr-eclipse%20beta%20versions/avreclipse.2.4.0.beta.p2repository.zip)

md5sums=('6ee5948ff7539c0349de722309f859dc')

package() {
  _installdir=${pkgdir}/usr/share/eclipse/dropins/avr
  cd ${srcdir}
  install -d ${_installdir}/eclipse
  cp -a ${srcdir}/features ${_installdir}/eclipse
  cp -a ${srcdir}/plugins ${_installdir}/eclipse
}

