options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Text-CSV_XS'
source=('http://search.cpan.org/CPAN/authors/id/H/HM/HMBRAND/Text-CSV_XS-0.97.tgz')
