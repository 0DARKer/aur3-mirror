# Maintainer: Philip Sequeira <phsequei at gmail dot com>

pkgname=otf-exo
pkgver=2.0
pkgrel=1
pkgdesc="A geometric sans serif font with a technological feel"
arch=('any')
url="http://ndiscovered.com/index.php/exo-2-0/"
license=('OFL')
depends=('fontconfig' 'xorg-font-utils')
install=otf.install
source=('http://www.ndiscovered.com/ficheiros/exo2/EXO_2_OTF.zip')
md5sums=('12d202604263fdcda1263f26a0950f9b')
sha256sums=('25ea23ed24f6487e10547b9332c374aa165768e337b331ae4998c4fbec4dc468')

package() {
  cd "${srcdir}"
  install -d "${pkgdir}/usr/share/fonts/OTF"
  install -m644 OFT/*.otf "${pkgdir}/usr/share/fonts/OTF/"
}
