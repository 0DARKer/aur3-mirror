# Maintainer: Kevin Dodd <jesin00@gmail.com>
# Contributor: Tianjiao Yin <ytj000@gmail.com>

pkgname=mathjax
pkgver=2.4
pkgrel=3
pkgdesc='An open source JavaScript display engine for mathematics that works in all modern browsers'
url='http://www.mathjax.org/'
arch=('any')
license=('apache')
provides=('otf-stix')
install='mathjax.install'
options=(!strip libtool staticlibs)
source=("https://github.com/mathjax/MathJax/archive/v${pkgver}-latest.tar.gz")
sha256sums=('f1450bafe63599729df7a879e40127f29cfc265abc4a0626bf9d274ed261cbeb')

package() {
	mkdir -pm755 "$pkgdir/usr/share/licenses/mathjax"
	cd "$pkgdir/usr/share"
	mkdir -m755 fonts
	cp -a "$srcdir/MathJax-$pkgver-latest" mathjax
	mv mathjax/fonts fonts/mathjax
	ln -s '../fonts/mathjax' mathjax/fonts
	ln -s '../../mathjax/LICENSE' licenses/mathjax/LICENSE
}
