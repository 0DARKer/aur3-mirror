# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='modern-perl'
pkgver='1.03'
pkgrel='2'
pkgdesc="enable all of the features of Modern Perl with one command"
arch=('any')
url='http://search.cpan.org/dist/Modern-Perl'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/C/CH/CHROMATIC/Modern-Perl-1.03.tar.gz')
md5sums=('1338c29f86b109280f8c723ece49299e')

build() {
  DIST_DIR="${srcdir}/Modern-Perl-1.03"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Build.PL --installdirs=vendor --destdir="$pkgdir" &&
    perl Build &&
    perl Build test &&
    perl Build install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
