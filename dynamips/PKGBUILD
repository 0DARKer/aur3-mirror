pkgname=dynamips
pkgver=0.2.9
pkgrel=1
pkgdesc="Cisco 7200/3600/2691 simulation platform."
arch=('i686' 'x86_64')
url="http://www.gns3.net/dynamips"
license=('GPL')
depends=('libpcap')
makedepends=('elfutils')
conflicts=('dynamips-community')

source=("dynamips-0.2.9-source.tar.gz::https://github.com/GNS3/${pkgname}/archive/v${pkgver}.tar.gz"
	"dynamips_0.2.9_arch_check.diff")

md5sums=('249c420a5a495db9bc712ed822eee157'
	 '78c5659103bd12dc69fe5bde170c931d')
         
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -p0 < ../dynamips_0.2.9_arch_check.diff
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/usr" install
}
