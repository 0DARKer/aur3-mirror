# Maintainer: Manuel Fill <ap0calypse@agitatio.org>
pkgname=whistle-git
pkgver=20140502
pkgrel=1
pkgdesc="a minimalistic (n)curses based mp3 player"
arch=('any')
url="http://github.com/ap0calypse/whistle"
license=('MIT')
depends=('perl-mp3-info' 'perl-curses-ui' 'mpg123')
makedepends=('git')
provides=('whistle')

_gitroot="https://github.com/ap0calypse/whistle.git"
_gitname="whistle"

build() {
    cd "$srcdir"
    msg "Connecting to GIT server...."

    if [ -d $_gitname ] ; then
        cd $_gitname && git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot $_gitname
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting make..."
    rm -rf "$srcdir/$_gitname-build"
    git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
    cd "$srcdir/$_gitname-build"
    install -D -m755 whistle "${pkgdir}/usr/bin/whistle"
    install -D -m644 README "${pkgdir}/usr/share/doc/whistle/README"
    install -D -m644 AUTHORS "${pkgdir}/usr/share/doc/whistle/AUTHORS"
    install -D -m644 LICENSE "${pkgdir}/usr/share/doc/whistle/LICENSE"
} 
