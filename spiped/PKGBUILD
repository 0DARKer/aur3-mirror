pkgname=spiped
pkgver=1.0.0
pkgrel=1
pkgdesc="secure pipe daemon"
arch=('i686' 'x86_64')
source=(http://www.tarsnap.com/$pkgname/$pkgname-$pkgver.tgz)
url="http://www.tarsnap.com/spiped.html"
license=('BSD')
sha256sums=('82df05533bf8d8580f57e6dbec7d7e2966eabd3ea7a0a0bb06f87000947969a3')

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make BINDIR=$pkgdir/bin/ install
}
