# Contributor: Nicolas Pouillard http://nicolaspouillard.fr

pkgname=spiped
pkgver=1.1.0
pkgrel=1
pkgdesc="secure pipe daemon"
arch=('i686' 'x86_64')
source=(http://www.tarsnap.com/$pkgname/$pkgname-$pkgver.tgz)
url="http://www.tarsnap.com/spiped.html"
license=('BSD')
sha256sums=('b727b902310d217d56c07d503c4175c65387ff07c9cd50a24584903faf9f3dc3')

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make BINDIR=$pkgdir/bin/ install
}
