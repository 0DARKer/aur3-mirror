# Maintainer: Hector A Escobedo <ninjahector dot escobedo at gmail dot com>
# Contributor: Hector A Escobedo <ninjahector dot escobedo at gmail dot com>

pkgname=fortune-mod-homestuck-git
pkgver=6ef323b
pkgrel=1
pkgdesc="Cool fortune quotes from the Homestuck webcomic by Andrew Hussie on MSPA"
arch=('any')
url="http://mspaintadventures.com/"
license=('None')
depends=('fortune-mod')
makedepends=('git' 'make')
install=usage.install
source=(git://github.com/HectorAE/fortunes.git)
md5sums=('SKIP')

_gitroot=git://github.com/HectorAE/fortunes.git
_gitname=fortunes

pkgver() {
  cd "$srcdir/$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  make all-homestuck
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}
