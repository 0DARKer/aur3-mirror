# Maintainer: Hector A Escobedo <ninjahector dot escobedo at gmail dot com>

pkgname=fortune-mod-homestuck-git
pkgver=r20.e57c7fd
pkgrel=1
pkgdesc="Cool fortune quotes from the Homestuck webcomic by Andrew Hussie on MSPA"
arch=('any')
url="http://mspaintadventures.com/"
license=('None')
depends=('fortune-mod')
makedepends=('git' 'make')
install=usage.install
source=(git://github.com/HectorAE/fortunes.git)
md5sums=('SKIP')

_gitroot=git://github.com/HectorAE/fortunes.git
_gitname=fortunes

pkgver() {
  cd "$srcdir/$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$_gitname"
  make all-homestuck
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir/" install
}
