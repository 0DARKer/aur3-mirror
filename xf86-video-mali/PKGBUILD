# Maintainer: 謝致邦 <Yeking@Red54.com>

pkgname=xf86-video-mali
pkgver=20130203
pkgrel=1
pkgdesc="X.org mali video driver"
arch=('armv7h')
url="http://github.com/linux-sunxi/xf86-video-mali"
license=('MIT')
depends=('glibc' 'mali400' 'xorg-server-mali')
makedepends=('git' 'automake' 'autoconf' 'libtool' 'libump' 'xorg-server-devel-mali')
groups=('xorg-drivers' 'xorg')

build() {
	cd $srcdir
	if [[ -d $pkgname ]]; then
		cd $pkgname && git pull origin
	else
		git clone $url --depth 1
	fi
	rm -rf $srcdir/build
	cp -r $srcdir/$pkgname $srcdir/build
	cd $srcdir/build
	aclocal
	autoheader
	libtoolize
	automake --add-missing
	autoconf
	./configure
	make
}

package() {
	cd $srcdir/build
	make prefix=$pkgdir/usr install
}
