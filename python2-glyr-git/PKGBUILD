# Maintainer: OK100 <ok100.ok100.ok100@gmail.com>

pkgname=python2-glyr-git
pkgver=20120810
pkgrel=1
pkgdesc="Python2 bindings to libglyr"
url="https://github.com/sahib/python-glyr"
arch=(any)
license=('GPL3')
depends=('python2' 'glyr-git')
makedepends=('git' 'cython2')

_gitroot="git://github.com/sahib/python-glyr.git"
_gitname="python-glyr"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi
  msg "GIT checkout done or server timeout"

  cd "$srcdir/$_gitname"
  python2 setup.py install --root=$pkgdir
}

# vim:set ts=2 sw=2 et:
