pkgname=gnome-shell-theme-holo
pkgver=20120123
pkgrel=3
pkgdesc="A GNOME Shell theme from tiheum, the Faenza icon set creator. Replaces gnome-shell-theme-ice-cream-sandwich."
url="http://tiheum.deviantart.com/art/Holo-280076980"
license=('GPL3')
arch=('any')
depends=('gnome-shell')
optdepends=('gnome-tweak-tool: Easy theme switcher')
source=('http://www.deviantart.com/download/280076980/holo_by_tiheum-d4mr0s4.zip')
md5sums=('668ad86493671d67487fe422200a0ee1')

package() {
    cd $srcdir
    mkdir -p $pkgdir/usr/share/themes/Holo/
    mv Holo/gnome-shell/ $pkgdir/usr/share/themes/Holo/
}
