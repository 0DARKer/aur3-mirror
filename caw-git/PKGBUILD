_pkgname=caw
pkgname=caw-git
pkgver=0.93.7a17041
pkgrel=1
epoch=1
pkgdesc="Lightweight infobar / panel / taskbar written in Python using the XCB, Cairo, Pango.  (Git Version)"
arch=('i686' 'x86_64')
url="https://github.com/chipaca/caw"
license=('GPL')
depends=('python2' 'xcb-util-wm' 'cairo' 'xpyb' 'pango')
makedepends=('python2')
optdepends=('python-pyalsaaudio')
source=('git://github.com/chipaca/caw.git')
md5sums=('SKIP')


pkgver() {
  cd $_pkgname
  echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

package() {
  cd $srcdir/$_pkgname
  python2 setup.py install --root=${pkgdir}
} 
