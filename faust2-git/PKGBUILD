# Maintainer: bjoern lindig (bjoern _dot_ lindig _at_ google.com)
pkgname=faust2-git
pkgver=20120512
pkgrel=1
pkgdesc="FAUST is a compiled language for real-time audio signal processing. FAUST2 provides a new backend for Faust, that can be used to directly produce LLVM Intermediate Representation."
arch=('i686' 'x86_64')
url="http://faust.grame.fr/"
license=('GPL')
depends=('llvm' 'ruby')
makedepends=('git')
provides=('faust2')
conflicts=('faust')
replaces=('faust')
source=($pkgname.patch)
md5sums=('aca01577b394b882c098da3dba9e054a')

_gitroot="git://faudiostream.git.sourceforge.net/gitroot/faudiostream/faudiostream"
_gitname="faudiostream"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
#    cd $_gitname && git checkout -b faust2 origin/faust2
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
#  cd "$srcdir/$_gitname-build" && git checkout -b faust2 origin/faust2

  cd "${srcdir}"
  patch -p 1 < $pkgname.patch

  cd "${srcdir}/${_gitname}-build"
  #
  # BUILD HERE
  #

  make PREFIX=/usr/
  make PREFIX=/usr/ DESTDIR="$pkgdir/" install
}
