# Maintainer: Gianni Vialetto <gianni@rootcube.net>

pkgname=ldc-git
pkgver=20120116
pkgrel=1
pkgdesc="A LLVM based compiler for the D programming language"
arch=('i686')
url="http://ldc-developers.github.com/ldc"
license=('BSD' 'GPL')
depends=('libconfig' 'llvm>=3.0')
makedepends=('git')
provides=('ldc')
options=('!emptydirs')

_gitroot=https://github.com/ldc-developers/ldc.git
_gitname=ldc

build() {
  cd $srcdir

  msg "Connecting to GIT repository $_gitroot..."

  if [ -d $startdir/src/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"

  cd "$srcdir/$_gitname"
  msg "Initializing/Updating GIT submodules..."
  git submodule init && git submodule update || return 1
  msg "Creating cmake build directory..."
  if [ ! -d build ]; then mkdir build; fi
  cd build && cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .. || return 1
  msg "Now building..."
  make -j9 VERBOSE=2 phobos2 || return 1
  make DESTDIR="$pkgdir" install || return 1
}
