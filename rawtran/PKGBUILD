# Maintainer: Zdenek Janak <janak@physics.muni.cz>

pkgname=rawtran
pkgver=0.2.1
pkgrel=1
pkgdesc="RAW to FITS convertor"
arch=('i686' 'x86_64')
url="http://integral.physics.muni.cz/rawtran/"
license=('GPL2')
depends=('dcraw')
makedepends=('cfitsio')
source=(http://integral.physics.muni.cz/pub/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('4c1224fd86e7c855dfc7f8e153a7d1c1')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
