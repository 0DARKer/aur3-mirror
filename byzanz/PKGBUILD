
# Maintainer: J. W. Birdsong <jwbirdsong AT gmail DOT com>
# Contributor: Luciano A. Ferrer <laferrer@gmail.com>

pkgname=byzanz
pkgver=0.2.3
pkgrel=1
pkgdesc="A simple tool to record a running X desktop to an animated GIF file."
arch=('i686' 'x86_64')
url="http://www.susegeek.com/desktop/byzanz-free-opensource-desktop-recording-command-line-tool/"
license=('GPL')
install=$pkgname.install
depends=(gstreamer0.10-base gtk2 cairo )
makedepends=(intltool libpanelappletmm )
optdepends=('gnome-panel: to use it as gnome panel applet')

source=(http://ftp.gnome.org/pub/GNOME/sources/byzanz/0.2/$pkgname-$pkgver.tar.gz)
md5sums=('3d69b80fb5d13143f8430b00d2bf861f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/bin
  make 
  make DESTDIR="$pkgdir/" install
}

