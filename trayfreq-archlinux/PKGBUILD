pkgname=trayfreq-archlinux
pkgver=0.53
pkgrel=1
pkgdesc="Battery monitor and CPU governor controller which runs in the system tray"
arch=('i686' 'x86_64' 'armv6h')
url=(http://batchbin.ueuo.com/projects/trayfreq-archlinux/)
license=('GPL')
depends=('gtk3' 'sudo')
makedepends=()
source=(http://batchbin.ueuo.com/assets/download/source/$pkgname-$pkgver-$pkgrel.tar.gz)
sha1sums=('1f26e61c4254d41c23463dc5c6aaff3cf12c29fa')
backup=('etc/trayfreq.conf')

build() {
	make --directory=$srcdir/$pkgname-master
}

package() {
	make install DESTDIR=$pkgdir --directory=$srcdir/$pkgname-master
}
