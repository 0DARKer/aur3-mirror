pkgname=trayfreq-archlinux
pkgver=0.4
pkgrel=2
pkgdesc="Battery monitor and CPU governor controller which runs in the system tray"
arch=('i686' 'x86_64')
url=("http://batchbin.ueuo.com/projects/trayfreq-archlinux/")
license=('GPL')
depends=('gtk2')
makedepends=()
source=(http://batchbin.ueuo.com/source/$pkgname-$pkgver.tar.gz)
md5sums=('6a04e3a47873ae42483218418ea3e295')


build() {
	make all --directory=$srcdir/$pkgname-master
}

package() {
  make install INSTALL_PATH=$pkgdir --directory=$srcdir/$pkgname-master
}
