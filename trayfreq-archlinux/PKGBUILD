pkgname=trayfreq-archlinux
pkgver=0.55
pkgrel=2
pkgdesc="Battery monitor and CPU governor controller which runs in the system tray"
arch=('i686' 'x86_64' 'armv6h')
url=(http://batchbin.ueuo.com/projects/trayfreq-archlinux/)
license=('GPL')
depends=('gtk3' 'sudo')
makedepends=()
source=(http://batchbin.ueuo.com/assets/download/source/tfal/$pkgname-$pkgver-$pkgrel.tar.gz)
sha1sums=('9c2b243c56c71dedd6d3e0832c7245cec5193c90')
backup=('etc/trayfreq.conf')

build() {
	make --directory=$srcdir/$pkgname-stable
}

package() {
	make install DESTDIR=$pkgdir --directory=$srcdir/$pkgname-stable
}
