# Contributor: Johannes Wienke <languitar at semipol dot de>

pkgname=simian
pkgver=2.2.24
pkgrel=2
pkgdesc="Simian (Similarity Analyser) identifies duplication in Java, C-sharp, C, C++, COBOL, Ruby, JSP, ASP, HTML, XML, Visual Basic, Groovy source code and even plain text files"
arch=('i686' 'x86_64')
url="http://www.redhillconsulting.com.au/products/simian/"
license=('custom')
depends=('java-runtime')
source=(http://www.redhillconsulting.com.au/products/$pkgname/$pkgname-$pkgver.tar.gz
        $pkgname)
md5sums=('2088d02fc58164c85e405c6871d08c77'
         'cc8d6a315c3e59c6cf10dc96baa5e0dc')

build() {
  cd $startdir/src
  
  install -D -m644 bin/$pkgname-$pkgver.jar $pkgdir/usr/share/java/$pkgname/$pkgname.jar || return 1
  install -D -m644 LICENSE.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE.txt || return 1
  install -D -m755 $startdir/src/$pkgname $pkgdir/usr/bin/$pkgname || return 1
}

