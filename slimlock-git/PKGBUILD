# Contributor: Joel Burget <joelburget@gmail.com>
# Contributor: Guff <kasull88@gmail.com>
pkgname=slimlock-git
pkgver=20120912
pkgrel=1
pkgdesc="Unholy screen locker based on SLiM"
arch=('i686' 'x86_64')
url="http://programsthatsmellgood.com/slimlock/"
license=('GPL2')
depends=('libxft' 'imlib2' 'pam' 'libxrandr')
makedepends=('git')
provides=('slimlock')
conflicts=('slimlock')
backup=('etc/slimlock.conf')
source=()
md5sums=()

_gitroot="git://github.com/joelburget/slimlock.git"
_gitname="slimlock"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  
  cd "$srcdir/$_gitname-build"

  make
}

package() {
  cd "$srcdir/$_gitname-build"

  make DESTDIR="$pkgdir/" MANDIR=/usr/share/man install
}
