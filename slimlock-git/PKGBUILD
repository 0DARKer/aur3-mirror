# Contributor: Joel Burget <joelburget@gmail.com>
# Contributor: Guff <kasull88@gmail.com>
# Contributor: Renato Aguiar
pkgname=slimlock-git
pkgver=20121207
pkgrel=1
pkgdesc="Unholy screen locker based on SLiM"
arch=('i686' 'x86_64')
url="http://programsthatsmellgood.com/slimlock/"
license=('GPL2')
depends=('libxft' 'imlib2' 'pam' 'libxrandr')
makedepends=('git')
provides=('slimlock')
conflicts=('slimlock')
backup=('etc/slimlock.conf')
source=('d44e96f26193a5141e95892654f7e613e1a2150c.patch')
md5sums=('7e76a7ba526c8dfc9ce9c4e4e389fc8f')

_gitroot="git://github.com/renatoaguiar/slimlock.git"
_gitname="slimlock"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  
  msg "Applying patches"
  patch -Np1 "${srcdir}/slimlock-build/panel.cpp" "${srcdir}/d44e96f26193a5141e95892654f7e613e1a2150c.patch"
  
  cd "$srcdir/$_gitname-build"

  msg "Starting make..."

  make
}

package() {
  cd "$srcdir/$_gitname-build"

  make DESTDIR="$pkgdir/" MANDIR=/usr/share/man install
}
