# Contributor: Marius Dransfeld <marius.dransfeld@googlemail.com>
pkgname=gnome-zeitgeist-gui-bzr
pkgver=764
pkgrel=1
pkgdesc="Gnome Zeitgeist is a tool for easily browsing and finding files on your computer"
arch=('i686' 'x86_64')
url="http://live.gnome.org/GnomeZeitgeist"
license=('GPL2')
depends=('gnome-panel' 'gnome-python-desktop' 'python' 'pygtk' 'pygobject' 'dbus-python' 'gnome-zeitgeist-engine-bzr')
makedepends=('bzr' 'gnome-common')

_bzrbranch=lp:gnome-zeitgeist
_bzrmod=gnome-zeitgeist

build() {
  cd ${srcdir}

  msg "Connecting to the server...."

  bzr branch ${_bzrbranch} -q -r ${pkgver}

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  cd ${_bzrmod}
  ./autogen.sh || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
md5sums=('671827088d01f295a25844047cb43d84')
