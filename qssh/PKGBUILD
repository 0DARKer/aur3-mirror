# Contributor: TDY <tdy@gmx.com>

pkgname=qssh
pkgver=1.3.2
pkgrel=1
pkgdesc="System tray that connects and monitors the status of ssh tunnels"
arch=('i686' 'x86_64')
url="http://www.phenix.bnl.gov/WWW/publish/hpereira/software/index.php?page=package&package_list=software_list_qt4&package=qssh&full=1"
license=('GPL3')
depends=('openssh' 'qt4')
source=(http://hugo.pereira.free.fr/software/tgz/qssh-$pkgver.tar.gz)
md5sums=('32ba1c60369cb5f62dbe03f6ddaa5276')

build() {
  cd $pkgname-$pkgver
  #qmake-qt4 qssh.pro
  cmake . \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DQT_QMAKE_EXECUTABLE=qmake-qt4
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}

