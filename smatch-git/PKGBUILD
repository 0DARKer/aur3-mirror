#Maintainer: aksr <aksr at t-com dot me>
pkgname=smatch-git
_pkgname=smatch
pkgver=0.4.1.r2783.4d5de7f
pkgrel=1
pkgdesc="Smatch is a static analysis tool for C."
arch=('i686' 'x86_64')
url="http://smatch.sourceforge.net/"
#url="http://repo.or.cz/w/smatch.git"
license=('custom: OSL')
groups=()
depends=()
makedepends=('git')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
#source=('FOLDER::git+URL#FRAGMENT' 
source=('smatch::git+git://repo.or.cz/smatch.git' 
        'LICENSE')
noextract=()
md5sums=('SKIP'
         '6aab00ce8d50d27993f0e2a32bbb0242')

pkgver() {
    cd "$srcdir/${_pkgname}"
	printf "%s" "$(git describe --long | sed 's/\([^-]*-\)g/r\1/;s/-/./g')"
}

build() {
	cd "$srcdir/${_pkgname}"
	make
}

check() {
	cd "$srcdir/${_pkgname}"
	make -k check
}

package() {
	cd "$srcdir/${_pkgname}"
	make PREFIX="$pkgdir/usr" install

    install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${_pkgname}/LICENSE
}

