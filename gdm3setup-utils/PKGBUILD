# Maintainer: NanoArch <nanoarch77@gmail.com>

pkgname=gdm3setup-utils
_pkgname=gdm3setup
pkgver=20130207
pkgrel=1
pkgdesc="Utilities to configure GDM3, autologin options and change Shell theme"
arch=(any)
license=('GPL')
url="http://github.com/Nano77/gdm3setup"
source=(https://raw.github.com/Nano77/various/master/src/$_pkgname-$pkgver.tar.xz)
depends=('gdm' 'gnome-shell' 'python2-lxml' 'python2-dbus')
conflicts=('gdm3setup-daemon-native-theme' 'gdm3setup-vala' 'gdm3setup-vala-native-theme')
sha256sums=('b6f4c06fa8e66b9b3f6f472467d29ff8198a2d3e96a2f5fc9c94aeaf41760417')

build() {
  cd ${srcdir}/$_pkgname-$pkgver

  make -C daemon

}

package() {
  cd ${srcdir}/$_pkgname-$pkgver

  make -C daemon DESTDIR=${pkgdir} install
}
