#Maintainer: Nick Vogel <vogelrn+aur@gmail.com>

arch=(i686 x86_64)
pkgname=emacs-clojure-mode-git
pkgver=20091025
pkgrel=1
pkgdesc="clojure mode for emacs"
url="http://clojure.codestuffs.com/"
license="GPL3"
depends=('emacs')
makedepends=('git')
provides=('emacs-clojure-mode')
conflicts=()
replaces=('emacs-clojure-mode')
backup=()
source=('emacs-clojure-mode-git.install')
md5sums=('0e968701d9961a7b9e6d82e586d26250')
install=('emacs-clojure-mode-git.install')

_gitroot="git://github.com/jochu/clojure-mode"
_gitname="clojure-mode"
build() {
  cd $startdir/src
  msg "Connecting to github.com GIT server...."

  if [ -d $startdir/src/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"

  cp -r $startdir/src/$_gitname $startdir/src/$_gitname-build
  cd $startdir/src/$_gitname-build
  
  rm -f README

  # install the directory in emacs site-lisp
  install -d $pkgdir/usr/share/emacs/site-lisp/$_gitname

  # install the files in directory created above
  install -m644 * -t $pkgdir/usr/share/emacs/site-lisp/$_gitname
} 
