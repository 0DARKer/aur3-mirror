pkgname=perl-xml-grove
pkgver=0.46alpha
pkgrel=3
pkgdesc="Flexible lightweight mid-level XML objects"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~KMACLEOD/XML-Grove"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perlxml>=2.19')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/K/KM/KMACLEOD/XML-Grove-$pkgver.tar.gz) 
md5sums=('48bee70ae412bd6cf8ef302b6c68e24e')

build() {
  cd  $startdir/src/XML-Grove-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
