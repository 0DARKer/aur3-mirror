# Contributor: Gour <gour@gour-nitai.com>
pkgname=bibstuff  
pkgver=1.0.0
pkgrel=1 
pkgdesc="Collection of scripts and modules for interacting with BibTeX style databases of citation references"
url="http://code.google.com/p/bibstuff/"
arch=('i686' 'x86_64')
license=('MIT')
depends=('python')
makedepends=()
source=(http://bibstuff.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('02dfd248f265e30fc70641f65c2d0208')

build() {
  cd $startdir/src/$pkgname-$pkgver

  python setup.py install --root=$pkgdir || return 1

  # copying license information
  install -D -m644 license.txt $pkgdir/usr/share/licenses/$pkgname/license.txt || return 1

  # copying readme information
  #install -D -m644 README.txt $pkgdir/usr/share/doc/$pkgname/README.txt

  # copying examples directory
  mkdir -p $pkgdir/usr/share/doc/$pkgname/examples
  cp examples/* $pkgdir/usr/share/doc/$pkgname/examples
}
