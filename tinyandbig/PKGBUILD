# Contributor: Daniel Milde <daniel@milde.cz>
pkgname=tinyandbig
pkgver=0.5
pkgrel=1
pkgdesc="Tiny & Big - up that mountain - demo BETA"
arch=('i686' 'x86_64')
url="http://www.tinyandbig.com/"
license=('custom')
depends=('openal' 'sdl' 'sdl_mixer' 'nvidia-cg-toolkit')
[ "$CARCH" = "i686" ]   && source=(http://tinyandbig.com/downloads/${pkgname}_upthatmountain_linux32-${pkgver}.tar.bz2 run.sh tinyandbig.desktop)
[ "$CARCH" = "x86_64" ] && source=(http://tinyandbig.com/downloads/${pkgname}_upthatmountain_linux64-${pkgver}.tar.bz2 run.sh tinyandbig.desktop)
[ "$CARCH" = "i686" ]   && md5sums=('5d3218dbf67011f1d13342c766a3ee5f' '9f47fd78e347f34b8fbc4039a2e9910c' '2d6c1066b1bee1b8508d4e9c0368a1db')
[ "$CARCH" = "x86_64" ] && md5sums=('4782a9eef133f533fd37aa027570fdd4' '9f47fd78e347f34b8fbc4039a2e9910c' '2d6c1066b1bee1b8508d4e9c0368a1db')

build() {
  install -dm755 ${pkgdir}/opt/tinyandbig
  install -dm755 ${pkgdir}/usr/bin
  cp -r ${srcdir}/tinyandbig/* ${pkgdir}/opt/tinyandbig/
  install -Dm755 ${srcdir}/run.sh ${pkgdir}/usr/bin/tinyandbig
  install -D ${srcdir}/tinyandbig.desktop ${pkgdir}/usr/share/applications/tinyandbig.desktop
}
