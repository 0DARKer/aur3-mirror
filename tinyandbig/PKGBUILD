# Contributor: Daniel Milde <info@milde.cz>
pkgname=tinyandbig
pkgver=0.3
pkgrel=1
pkgdesc="Tiny & Big - up that mountain - demo BETA"
arch=('i686' 'x86_64')
url="http://www.tinyandbig.com/"
license=('custom')
depends=('openal' 'sdl' 'sdl_mixer' 'nvidia-cg-toolkit')
[ "$CARCH" = "i686" ]   && source=(http://tinyandbig.com/downloads/${pkgname}demolinux32-${pkgver}.tar.bz2 run.sh tinyandbig.desktop)
[ "$CARCH" = "x86_64" ] && source=(http://tinyandbig.com/downloads/${pkgname}demolinux64-${pkgver}.tar.bz2 run.sh tinyandbig.desktop)
[ "$CARCH" = "i686" ]   && md5sums=('e17d5de31ce0a815f9d5ec3d2daf6d9b' '9f47fd78e347f34b8fbc4039a2e9910c' '2d6c1066b1bee1b8508d4e9c0368a1db')
[ "$CARCH" = "x86_64" ] && md5sums=('365ee55acd6398536ac850649f88f722' '9f47fd78e347f34b8fbc4039a2e9910c' '2d6c1066b1bee1b8508d4e9c0368a1db')

build() {
  install -dm755 ${pkgdir}/opt/tinyandbig
  install -dm755 ${pkgdir}/usr/bin
  cp -r ${srcdir}/tinyandbig/* ${pkgdir}/opt/tinyandbig/
  install -Dm755 ${srcdir}/run.sh ${pkgdir}/usr/bin/tinyandbig
  install -D ${srcdir}/tinyandbig.desktop ${pkgdir}/usr/share/applications/tinyandbig.desktop
}
