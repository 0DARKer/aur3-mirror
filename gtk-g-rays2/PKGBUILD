# Contributor: Lothar Gesslein <ulmen@cryptomilch.de>
pkgname=gtk-g-rays2
pkgver=1.11
pkgrel=1
pkgdesc="Access the configuration data (and visualise NMEA data) from the WBT-201 GPS"
arch=(i686 x86_64)
url="http://www.daria.co.uk/gps"
license=('GPL')
depends=('libglade')
source=(http://www.zen35309.zen.co.uk/gps/gtk-g-rays2-$pkgver.tar.bz2)

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR="$startdir/pkg" install
}
md5sums=('a7b6d8f2bf042c0481e451fa8a05970f')
