# Contributor: moostik <mooostik_at_gmail.com>

pkgname=pstplus
pkgver=1.5
pkgrel=1
pkgdesc="Creates LaTeX/Pstricks code for mathematic graphics"
url='http://www.xm1math.net/pstplus/'
license=('GPL') 
arch=('i686' 'x86_64')
depends=('qt>=4.5.1' 'texlive-pstricks' 'ghostscript')
optdepends=('gnuplot : for 3D graphics')

source=(http://www.xm1math.net/pstplus/${pkgname}-${pkgver}.tar.bz2)

build() {
  cd $startdir/src/$pkgname-$pkgver
  export INSTALL_ROOT=$startdir/pkg
  qmake -unix PREFIX=/usr pstplus.pro
  make || return 1
  make install

  rm -f $startdir/pkg/usr/share/pstplus/{pstplus.desktop,COPYING}
  install -D -m644 images/logo.png \
    $startdir/pkg/usr/share/pixmaps/pstplus.png
  install -D -m644 utilities/pstplus.desktop \
    $startdir/pkg/usr/share/applications/$pkgname.desktop
}


md5sums=('554662770ce558d74b47cce3e6ae529c')
