# Maintainer: moostik <mooostik_at_gmail.com>

pkgname=pstplus
pkgver=1.5
pkgrel=1
pkgdesc="Creates LaTeX/Pstricks code for mathematic graphics"
url='http://www.xm1math.net/pstplus/'
license=('GPL') 
arch=('i686' 'x86_64')
depends=('qt>=4.5.1' 'texlive-pstricks' 'ghostscript')
optdepends=('gnuplot: for 3D graphics')

source=(http://www.xm1math.net/${pkgname}/${pkgname}-${pkgver}.tar.bz2)

build() {
  cd $srcdir/$pkgname-$pkgver
  export INSTALL_ROOT=$pkgdir
  qmake -unix PREFIX=/usr ${pkgname}.pro
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make install

  rm -f $pkgdir/usr/share/${pkgname}/{${pkgname}.desktop,COPYING}
  install -D -m644 images/logo.png \
    $pkgdir/usr/share/pixmaps/$pkgname.png
  install -D -m644 utilities/$pkgname.desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop
}

md5sums=('554662770ce558d74b47cce3e6ae529c')
