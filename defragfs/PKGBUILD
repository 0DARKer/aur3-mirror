pkgname=defragfs
pkgver=1.0
pkgrel=1
pkgdesc="Linux File-system defragmenter."
arch=('i686' 'x86_64')
url="http://defragfs.sourceforge.net/"
license=('GPL3')
depends=('perl')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.gz)
md5sums=('9b692c96bfd607d597b13d4bd9a2f73a')

build() {
  cd $srcdir

  install -Dm755 defragfs-1.0 $pkgdir/usr/bin/defragfs
}
