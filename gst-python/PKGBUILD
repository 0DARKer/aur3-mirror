# Maintainer:  SpepS <dreamspepser at yahoo dot it>
# Contributor: Ryan Coyner <rcoyner@gmail.com>

pkgname=gst-python
pkgver=0.10.18
pkgrel=1
pkgdesc="GStreamer Python bindings"
arch=('i686' 'x86_64')
url="http://gstreamer.freedesktop.org/modules/gst-python.html"
license=('GPL')
depends=('gstreamer0.10-base' 'python')
buildepends=('autoconf>=2.52', 'automake>=1.6', 'libtool', 'git', 'pkgconfig')
install=$pkgname.install
source=("http://gstreamer.freedesktop.org/src/gst-python/${pkgname}-${pkgver}.tar.gz")
md5sums=('923b524adc591a53021cd0c3e6349943')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr || return 1
	make || return 1
	make DESTDIR="$pkgdir" install || return 1
}
