pkgname=lewm
pkgver=0.75
pkgrel=1
pkgdesc="Lua script that brings tiling to EWMH-compliant Window Managers"
url="http://luaforge.net/projects/lewm/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('dmenu' 'lua-yajl-git'  'archlinux-xdg-menu' 'luaposix')
source=(http://luaforge.net/frs/download.php/4806/lewm.${pkgver}.tar.bz2)
sha1sums=('b503f4dbc400b766f820773a54f5d2b67d6fa5aa')
makedepends=('gcc')

build() {
    cd ${srcdir}/src
     autoreconf -i
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
