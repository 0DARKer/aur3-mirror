pkgname=lewm
pkgver=0.74
pkgrel=1
pkgdesc="Lua script that brings tiling to EWMH-compliant Window Managers"
url="http://luaforge.net/projects/lewm/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('dmenu' 'lua-yajl-git'  'archlinux-xdg-menu' 'luaposix')
source=(http://luaforge.net/frs/download.php/4796/lewm.${pkgver}.tar.bz2)
sha1sums=('22ed6358526de8a19e20ee83437c1c19c5f11257')
makedepends=('gcc')

build() {
    cd ${srcdir}/src
     autoreconf -i
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
