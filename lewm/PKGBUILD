pkgname=lewm
pkgver=0.71
pkgrel=1
pkgdesc="Lua script that brings tiling to EWMH-compliant Window Managers"
url="http://luaforge.net/projects/lewm/"
arch=(any)
license=('GPL')
depends=('dmenu' 'lua-yajl-git'  'archlinux-xdg-menu' 'luaposix')
source=(http://luaforge.net/frs/download.php/4783/lewm.${pkgver}.tar.bz2)
sha1sums=('7c6006cf902984a166b386f83f1914561af3b0c1')
makedepends=('gcc')

build() {
    cd ${srcdir}/src
     autoreconf -i
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
