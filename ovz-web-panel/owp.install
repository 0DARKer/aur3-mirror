post_upgrade(){
	if [ -f /opt/ovz-web-panel/config/database.yml ]; then
		cd /opt/ovz-web-panel
		rake db:migrate RAILS_ENV="production"
		cd -
	fi
}
post_install(){
	if [ -x "`which gem-1.8`" ]; then
		echo "Installing package sqlite3-ruby for Ruby"
		gem-1.8 install sqlite3
	else 
		echo -e "gem-1.8 not found in system, ovz-web-panel will not work"
	fi
}
op=$1
shift

$op $*
