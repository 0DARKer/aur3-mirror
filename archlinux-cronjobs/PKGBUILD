# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $

pkgname=archlinux-cronjobs
pkgver=c14d750
pkgrel=1
pkgdesc="Cron jobs for several programs, for use with Arch Linux"
arch=('any')
url="https://github.com/notfoss/archlinux-cronjobs"
license=('GPL')
depends=('cron')
source=("git+https://github.com/notfoss/archlinux-cronjobs.git")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname
  git rev-parse --short HEAD
}

package() {
  cd $pkgname
  rm README.rst
  mkdir -p $pkgdir/etc/cron.daily
  for i in *; do install -m755 "$i" $pkgdir/etc/cron.daily/; done
}

# vim:set ts=2 sw=2 et:
