pkgname=libtorrent-rasterbar-dev
pkgver=0.15
_revision=r4252
pkgrel=1
pkgdesc="A C++ library that aims to be a good alternative to all the other bittorrent implementations around(development snapshot)"
url="http://www.rasterbar.com/products/libtorrent/"
arch=('i686' 'x86_64')
license=('custom')
makedepends=('libsigc++2.0' 'boost>=1.41.0' 'python>=2.6')
md5sums=('236268a97d04f397d1de7d3e422bbaf0')
conflicts=('libtorrent-rasterbar' 'libtorrent-rasterbar-svn')
provides=('libtorrent-rasterbar')
source=(http://cdnetworks-kr-2.dl.sourceforge.net/project/qbittorrent/qbittorrent-unstable/${pkgname/-dev/}-${pkgver}.svn.${_revision}.tar.gz)
build() {
  cd "${srcdir}/${pkgname/-dev/}-${pkgver}.svn.${_revision}"
   ./autotool.sh
  ./configure --prefix=/usr --enable-python-binding \
              --with-boost-filesystem=mt \
              --with-boost-thread=mt || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  install -D COPYING "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
