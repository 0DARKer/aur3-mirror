# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

pkgname=ultra-flat-icons
pkgver=1.1
pkgrel=2
pkgdesc="A simple flat icon theme, derived from Flattr icon theme."
arch=("i686" "x86_64")
url="http://gnome-look.org/content/show.php/Ultra-Flat-Icons?content=167477"
license=("CCPL")

depends=()
optdepends=()
makedepends=()
provides=("${pkgname}=${pkgver}")
conflicts=("${pkgname}<=${pkgver}")
replaces=("${pkgname}<=${pkgver}")

install=${pkgname}.install

source=(
	"https://www.dropbox.com/s/dktl70lh4lnhp0a/ultra-flat-icons.tar.gz"
	"${pkgname}.install"
)
md5sums=(
	"58a0dd3a128b4dcae18ebf4e06322c78"
	"6ea1bd61d0e9ca6542277bdbc4b1e924"
)
sha512sums=(
	"3966088865b9a2f30cc176b89c98bfbfb7d531bfbcfe8cf545fe26181fc04b3235c3680b2078f991c2cb1b74d15a8a077d856f441d6bf2a6210ad60684298305"
	"8027469ed1abd10a0bb014af6eb97b063184442a240dcd4d70c3326285b339d10117842b7e01408555e14ab1e74e8fea80834444090465ac5f2b41d7d62e078c"
)

package() {
	# Create base directory
	install -Ddm755 ${pkgdir}/usr/share/icons/UltraFlatIcons
	
	# Copy icon set
	cp -R ${srcdir}/${pkgname}/* ${pkgdir}/usr/share/icons/UltraFlatIcons
}