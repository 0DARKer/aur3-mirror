# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

pkgname=ultra-flat-icons
pkgver=1.1
pkgrel=1
pkgdesc="A simple flat icon theme, derived from Flattr icon theme."
arch=("i686" "x86_64")
url="http://gnome-look.org/content/show.php/Ultra-Flat-Icons?content=167477"
license=("CCPL")

depends=()
optdepends=()
makedepends=()
provides=("${pkgname}=${pkgver}")
conflicts=("${pkgname}<=${pkgver}")
replaces=("${pkgname}<=${pkgver}")

# Mirror of <http://www.mediafire.com/download/00kte6ws24gondp/ultra-flat-icons.tar.gz>
source=(
	"https://www.dropbox.com/s/kepb3fi0f0w3mvq/${pkgname}-${pkgver}.tar.gz"
)
md5sums=(
	"312498922108c4cca462bc1c7c6600b9"
)
sha512sums=(
	"77d1d56d3316c217c07480f0519a8b0de0b5ff4e7ca04cf035d3fb089ec501137e47398c153a393489c3831d57f485c162dff3e055475f0f8ace5a31cc97fb5a"
)

package() {
	# Create base directory
	install -Ddm755 ${pkgdir}/usr/share/icons
	
	# Copy icon set
	cp -R ${srcdir}/${pkgname} ${pkgdir}/usr/share/icons
	
	# Symlink fix
	cd ${pkgdir}/usr/share/icons/${pkgname}/apps/scalable
	rm gnome-power-statistics.svg
	ln -s gnome-power-manager.svg gnome-power-statistics.svg
}