pkgname=mate-corba
pkgver=2011.12.16
pkgrel=1
pkgdesc="Thin/fast CORBA ORB"
arch=('i686' 'x86_64')
license=('LGPL' 'GPL')
depends=('libidl2>=0.8.11')
makedepends=('pkgconfig')
options=('!emptydirs' '!libtool')
groups=('mate')
url="http://matsusoft.com.ar/projects/mate/"
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('ca54cea2bc12926ccac275d5b3df5030af42d56b5c673bf830a3f8236fc82734')


build() {
    cd "${srcdir}"
    ./autogen.sh \
        --prefix=/usr \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}"
    make DESTDIR="${pkgdir}" install || return 1
}
