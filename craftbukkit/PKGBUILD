pkgname=craftbukkit
pkgver=1.2.5r3.0
pkgrel=1
pkgdesc="Minecraft server implementing the Bukkit API"
arch=(any)
url="http://bukkit.org/"
license=('LGPL')
depends=('java-runtime' 'tmux')
conflicts=('bukkit' 'craftbukkit-git')
provides=(craftbukkit-git)
install=craftbukkit.install
source=("http://dl.bukkit.org/downloads/craftbukkit/get/01119_1.2.5-R3.0/craftbukkit.jar"
"craftbukkit.rc")
noextract=("craftbukkit.jar")
md5sums=('b34b381faff9b4a62702845f34f93d8a'
         'cd8a442fed5569dfecfb26b50d698a87')
         
package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  mkdir -p "$pkgdir/etc/rc.d"
  install -m 644 "$srcdir/craftbukkit.jar" "$pkgdir/opt/craftbukkit/"
  install -m 755 -T "$srcdir/craftbukkit.rc" "$pkgdir/etc/rc.d/craftbukkit"
}

# vim:set ts=2 sw=2 et:
