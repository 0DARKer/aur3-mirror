pkgname=craftbukkit
pkgver=1.3.1r1.0
pkgrel=2
pkgdesc="Minecraft server implementing the Bukkit API"
arch=(any)
url="http://bukkit.org/"
license=("LGPL")
depends=(java-runtime tmux)
conflicts=(bukkit craftbukkit-git)
provides=(bukkit craftbukkit-git)
install=craftbukkit.install
source=("http://cbukk.it/craftbukkit.jar"
"craftbukkit.rc")
noextract=("craftbukkit.jar")
md5sums=('2b1404f85f6d28c5c9b3600bf9f123a5'
         'cd8a442fed5569dfecfb26b50d698a87')
         
package() {
  install -Dm644 "$srcdir/craftbukkit.jar" "$pkgdir/opt/craftbukkit/craftbukkit.jar"
  install -Dm755 "$srcdir/craftbukkit.rc" "$pkgdir/etc/rc.d/craftbukkit"
}

