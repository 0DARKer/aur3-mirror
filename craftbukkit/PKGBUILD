# Maintainer: Sebastian KÃ¶hler <sebkoehler@whoami.org.uk>
pkgname=craftbukkit
pkgver=1060
pkgrel=1
pkgdesc="Current build of the Minecraft Server mod Bukkit"
arch=(any)
url="http://bukkit.org/"
license=('LGPL')
depends=('java-runtime' 'tmux')
conflicts=('bukkit')
install=craftbukkit.install
source=('http://ci.bukkit.org/job/dev-CraftBukkit/1060/artifact/target/craftbukkit-0.0.1-SNAPSHOT.jar' 'craftbukkit.rc')
md5sums=('3a7c88414eb684d5a582b6c53ce23296'
         'e704dc575985c4f25f14afdb9c3f3c6e')

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  mkdir -p "$pkgdir/etc/rc.d"
  install -m 644 "$srcdir/craftbukkit-0.0.1-SNAPSHOT.jar" "$pkgdir/opt/craftbukkit/"
  install -m 755 -T "$srcdir/craftbukkit.rc" "$pkgdir/etc/rc.d/craftbukkit"
}

