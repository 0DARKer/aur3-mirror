# Maintainer: Sebastian KÃ¶hler <sebkoehler@whoami.org.uk>
pkgname=craftbukkit
pkgver=740
pkgrel=2
pkgdesc="Current build of the Minecraft Server mod Bukkit"
arch=(any)
url="http://bukkit.org/"
license=('LGPL')
depends=('java-runtime' 'tmux')
conflicts=('bukkit')
install=craftbukkit.install
source=('http://ci.bukkit.org/job/dev-CraftBukkit/740/artifact/target/craftbukkit-0.0.1-SNAPSHOT.jar' 'craftbukkit.rc')
md5sums=('a0009e99d45f4eb284009b14c0cfa49f'
         'f34122d455056e487ca1e04a31fc2e7b')

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  mkdir -p "$pkgdir/etc/rc.d"
  install -m 660 "$srcdir/craftbukkit-0.0.1-SNAPSHOT.jar" "$pkgdir/opt/craftbukkit/"
  install -m 755 -T "$srcdir/craftbukkit.rc" "$pkgdir/etc/rc.d/craftbukkit"
}

