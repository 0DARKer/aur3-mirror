pkgname=craftbukkit
pkgver=1.2.3r0.1
pkgrel=1
pkgdesc="Minecraft server implementing the Bukkit API"
arch=(any)
url="http://bukkit.org/"
license=('LGPL')
depends=('java-runtime' 'tmux')
conflicts=('bukkit' 'craftbukkit-git')
provides=(craftbukkit-git)
install=craftbukkit.install
source=('http://cbukk.it/craftbukkit-beta.jar' 'craftbukkit.rc')
md5sums=('0587b0b342c4b2bd45a4cf61bf1a51d8'
         '068ee642dd8c642d78f621e58658fdfc')

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  mkdir -p "$pkgdir/etc/rc.d"
  install -m 644 "$srcdir/craftbukkit-beta.jar" "$pkgdir/opt/craftbukkit/"
  install -m 755 -T "$srcdir/craftbukkit.rc" "$pkgdir/etc/rc.d/craftbukkit"
}

# vim:set ts=2 sw=2 et:
