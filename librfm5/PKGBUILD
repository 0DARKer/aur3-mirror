# Maintainer: Brian Bidulock <bidulock@openss7.org>

pkgname=librfm5
pkgver=5.3.12
pkgrel=1
pkgdesc="Rodent file manager library"
arch=('i686' 'x86_64')
url="http://xffm.org/"
license=('GPL3')
makedepends=('intltool')
depends=('libtubo0' 'libdbh2' 'libzip' 'file' 'gtk3' 'librsvg')
source=(http://downloads.sourceforge.net/project/xffm/$pkgver/$pkgname-$pkgver.tar.bz2)
md5sums=('1784db90539a16d7e8897a5e93a5ea85')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="${pkgdir}" install
}
