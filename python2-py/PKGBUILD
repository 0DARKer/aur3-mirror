# Maintainer: Sebastian Wiesner <lunaryorn googlemail com>
pkgname=python2-py
pkgver=1.4.5
pkgrel=1
pkgdesc="Python rapid development tools"
arch=('any')
url="http://pylib.org"
license=('MIT')
makedepends=(python2-distribute)
source=("http://pypi.python.org/packages/source/p/py/py-$pkgver.zip")
md5sums=('d2a51f8c9eca43e2953cdec72989d6ec')

build() {
    cd "$srcdir/py-$pkgver"
    python2 setup.py install --root="$pkgdir" -O1 || return 1
    install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
