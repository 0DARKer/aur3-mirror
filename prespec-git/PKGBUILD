# Maintainer: L.G. Sarmiento (Pico) <Luis.Sarmientop-ala-nuclear.lu.se>

pkgname=prespec-git
pkgver=20130131
pkgrel=1
pkgdesc=""
url="http://web-docs.gsi.de/~wolle/PreSPEC/index.html"
arch=('x86_64')
license=('GPL3')
depends=('adflite-git')
makedepends=('git')
options=(!libtool)
_gitroot='agatagsi@lx-pool.gsi.de:git/prespec'
_gitname='prespec'
source=('this.patch')
md5sums=('7c625c6a2e9e5964d32cddb766df0dd4')

## If you plan to access the GSI machines you are supposed to know the password already.

build() {
  cd ${srcdir}

  if [ -d ${srcdir}/$_gitname ]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  if [ -d ${srcdir}/$_gitname-build ]; then
    rm -rf ${srcdir}/$_gitname-build
  fi

  cp -r ${srcdir}/$_gitname ${srcdir}/$_gitname-build || return 1

  msg "Patching the source code"
  cd ${srcdir}/$_gitname-build/prespec/unpack
  patch -Np4 < ${srcdir}/this.patch

  cd ${srcdir}/$_gitname-build
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/$_gitname-build
  make DESTDIR="$pkgdir/" install
}
