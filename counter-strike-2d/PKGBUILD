# Maintainer: Josef Lusticky <evramp@gmail.com>

pkgname=counter-strike-2d
pkgver=0.1.1.9b
pkgrel=2
pkgdesc="A more than just a freeware clone of the well known game Counter-Strike"
arch=('i686' 'x86_64')
url="http://www.cs2d.com/"
license=('custom')
changelog=$pkgname.changelog
[ "$CARCH" = "i686" ] && depends=('gcc-libs' 'freetype2' 'mesa' 'libgl' 'libxxf86vm')
[ "$CARCH" = "x86_64" ] && depends=('lib32-gcc-libs' 'lib32-freetype2' 'lib32-mesa' 'lib32-libgl' 'lib32-libxxf86vm')
makedepends=('coreutils')
source=(http://www.evramp.profitux.cz/aur/cs2d-${pkgver}-2-bin.tar.gz cs2d.desktop)

build() {
  mkdir -p $pkgdir/usr/share/pixmaps
  mkdir -p $pkgdir/usr/bin
  cp -r $srcdir/cs2d $pkgdir/usr/share/
  ln -s /usr/share/cs2d/CounterStrike2D $pkgdir/usr/bin/CounterStrike2D
  chmod +x $pkgdir/usr/share/cs2d/CounterStrike2D
#  ln -s /usr/share/cs2d/Launcher.sh $pkgdir/usr/bin/cs2d-launcher
  install -Dm644 $srcdir/other/cs2d.png $pkgdir/usr/share/pixmaps/
  install -Dm644 $srcdir/cs2d.desktop $pkgdir/usr/share/applications/cs2d.desktop
  install -Dm644 $srcdir/other/license.txt $pkgdir/usr/share/licenses/${pkgname}/license.txt
}

md5sums=('f5c841983bc62fa57683a908593c625c'
         'b50736db44217e712f82cb842f55913f')
sha1sums=('8bd369242d76d1770a073c2ee7e82d39a7adac49'
          '008de673f48770dc545484f0eadd7f577f69db91')
