# Maintainer: Rob McCathie <archaur at rmcc dot com dot au>


_name=xfdashboard
pkgname=xfdashboard-dev
pkgver=0.3.0
pkgrel=1
pkgdesc="Maybe a Gnome shell like dashboard for Xfce"
arch=('i686' 'x86_64')
url="http://xfdashboard.froevel.de/"
license=('GPL')
depends=('clutter>=1.12' 'dbus-glib>=0.98' 'garcon>=0.2.0' 'glib2>=2.30.3' 'libwnck>=2.30' 'xfconf>=4.10.0')
makedepends=('xfce4-dev-tools')
conflicts=("${_name}")
provides=("${_name}=${pkgver}")
source=("http://$_name.froevel.de/releases/$_name-$pkgver.tar.bz2")
sha1sums=('855e7542ab30e32e9a7221dd9e89aee7868e1562')

build() {
  cd "$srcdir/$_name-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$_name-$pkgver"
  make DESTDIR="$pkgdir" install
}
