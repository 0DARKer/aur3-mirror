# Maintainer: whites11 <whites11@gmail.com>
pkgname=libgdata-cpp-svn
pkgver=70
pkgrel=1
pkgdesc="C++ library to access google's data"
arch=('i686' 'x86_64')
url="http://code.google.com/p/libgdata-cpp/"
license=('GPL2')
depends=('qt>=4.6')
conflicts=('libgdata-cpp')
provides=('libgdata-cpp')
makedepends=('svn' 'cmake')
source=()
md5sums=()

_svnmod="libgdata-cpp"
_svntrunk="http://libgdata-cpp.googlecode.com/svn/trunk/"

build() {
  cd "$srcdir/"
  msg "Getting source..."
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Creating make environment..."
  rm -rf $srcdir/$_svnmod/build/*
  mkdir $srcdir/$_svnmod/build
  cd $srcdir/$_svnmod/build

  msg "Starting make..."

  cmake -D CMAKE_INSTALL_PREFIX=/usr ..
  make || return 1
  make DESTDIR="$pkgdir/" install
}

