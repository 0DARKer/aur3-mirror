# Contributor: Hokum <hokum_at_mail_dot_ru>

pkgname=ejecter
pkgver=0.3.1
pkgrel=2
pkgdesc="An icon in the notification area to help unmount external media"
arch=('i686' 'x86_64')
url="https://launchpad.net/ejecter"
license=('GPL3')
depends=('gtk2>=2.12' 'gnome-disk-utility')
install='ejecter.install'
makedepends=('vala>=0.7.0' 'python>=2.3' 'intltool')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.bz2)
md5sums=('4972610ca46445ae68212bce3d6c06e9')
sha1sums=('622172bb9ff27d45da60b8b06f9418ebea4e42d9')

build() {
  cd $pkgname-$pkgver

  ./waf configure --prefix=/usr
  ./waf build || return 1
  ./waf --destdir="$pkgdir" install
}
