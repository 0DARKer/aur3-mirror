# Contributor: zuf <kontakt.zuf@gmail.com>
# Contributor: agapito <agapitofrndez@ozu.es>

pkgname=mlt-git
_basename=mlt
pkgver=v0.9.0.r235.g9f15f4c
pkgrel=1
pkgdesc="An open source multimedia framework, designed and developed for television broadcasting."
arch=(i868 x86_64)
url="http://http://www.mltframework.org/"
license=('GPL')
depends=('sdl_image' 'libsamplerate' 'libdv' 'sox' 'ffmpeg-compat' 'frei0r-plugins' 'qt4' 'libexif')
makedepends=('git')
optdepends=('jack')
conflicts=('mlt' 'mlt++' )
provides=("mlt")
source=(git+https://github.com/mltframework/mlt.git)
md5sums=('SKIP')

build() {
	cd $srcdir/$_basename
	./configure --prefix=/usr --enable-gpl --disable-gtk2 \
		--avformat-swscale \
		--qimage-libdir=/usr/lib/ --qimage-includedir=/usr/include/Qt \
		--avformat-vdpau \
		--avformat-swscale \
		--enable-opengl
	make
}

pkgver() {
  cd "$srcdir/$_basename"
  git describe --long | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

package() {
	cd "$srcdir/$_basename"
	make DESTDIR="$pkgdir/" install
}
