# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-stella-git
_gitname=stella-libretro
pkgver=2013.05.19_ef2e5d9
pkgrel=1
pkgdesc="libretro implementation of Stella. (Atari 2600)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/stella-libretro"
license=('custom')
makedepends=('git')
source=('git://github.com/libretro/stella-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/stella_libretro.so $pkgdir/usr/lib/libretro/libretro-stella.so
}

