# Maintainer: Jaroslav Lichtblau <dragonlord@aur.archlinux.org>

pkgname=neonview
pkgver=0.8.1
pkgrel=1
pkgdesc='Free, lightweight image viewer'
arch=('i686' 'x86_64')
url='http://www.tuxarena.com/neonview/'
license=('GPL')
depends=('desktop-file-utils' 'gtk3')
install=$pkgname.install
source=(http://www.tuxarena.com/neonview/files/${pkgname}-${pkgver}-src.tar.gz \
        $pkgname.desktop)
sha256sums=('7466fe5c92fcf353d3cc1eedeb1315b923796b28e9cd75e6808370b7aba3fd21'
            'b858e4e69883f1f675de69bdb22c271976ca64b5bf77a9f746629fada4a97ab8')

build() {
  cd ${pkgname}-${pkgver}-src

  make
}

package() {
  cd ${pkgname}-${pkgver}-src

  install -D -m755 $pkgname ${pkgdir}/usr/bin/$pkgname

#.desktop file + icon
  install -D -m644 ${srcdir}/$pkgname.desktop \
    ${pkgdir}/usr/share/applications/$pkgname.desktop
#  install -D -m644 ${srcdir}/${pkgname}-${pkgver}-src/icon.png \
#    ${pkgdir}/usr/share/pixmaps/$pkgname.png
}
