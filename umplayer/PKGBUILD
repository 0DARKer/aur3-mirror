# Maintainer: Elijah Perrault <elijah@starcoder.info>
pkgname=umplayer
pkgver='1.0.55.1'
_realver='1.0-55.1'
pkgrel=3
pkgdesc="The multimedia player that fills all your needs."
arch=('i686' 'x86_64')
url="http://www.umplayer.com"
license=('GPL')
depends=('qt>=4.3')
makedepends=('rpmextract')

_arch='i386'
md5sums=('f4b81610754eb48e20951fa31687671c')
[[ "$CARCH" == "x86_64" ]] && _arch='x86_64' && md5sums[0]='541574704a8441aa0b6ae61b7ccf98ea'
source=("http://sourceforge.net/projects/umplayer/files/UMPlayer-0.9/Fedora-13/umplayer-${_realver}.${_arch}.rpm/download")

build() {
  cd "$srcdir/"
  rpmextract.sh download
  cp -r usr/ $pkgdir/
}

