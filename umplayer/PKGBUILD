# Maintainer: Elijah Perrault <elijah@starcoder.info>
pkgname=umplayer
pkgver='0.95.2.1'
_realver='0.95-2.1'
pkgrel=2
pkgdesc="The multimedia player that fills all your needs."
arch=('i686' 'x86_64')
url="http://www.umplayer.com"
license=('GPL')
depends=('qt>=4.3' 'mplayer' 'xdg-utils')
makedepends=('rpmextract')
install=umplayer.install

_arch='i386'
md5sums=('ddb874dc29a8904821eea584230b08a6')
[[ "$CARCH" == "x86_64" ]] && _arch='x86_64' && md5sums[0]='08640588efb8d2f9785ea59a51a99f8e'
source=("http://sourceforge.net/projects/umplayer/files/UMPlayer-0.95/Fedora_14/umplayer-${_realver}.${_arch}.rpm/download")

build() {
  cd "$srcdir/"
  rpmextract.sh download
  cp -r usr/ $pkgdir/
}

