# Contributor: Elijah Perrault

pkgname=umplayer
pkgver=0.97
pkgrel=1
pkgdesc="A complete front-end for MPlayer"
arch=('i686' 'x86_64')
url="http://www.umplayer.com/"
license=('GPL')
depends=('mplayer' 'qt')
source=(http://sl1200.org/~erik/files/umplayer-0.97.tar.bz2)
install="$pkgname".install
sha1sums=('57e1dff2e111c710687c2d0995375d5461b0a2a6')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # fix CONF_PATH and DOC_PATH
  sed -i \
    -e "s%^CONF_PREFIX%#CONF_PREFIX%" \
    -e "s%share/doc/packages/umplayer%share/doc/$pkgname-$pkgver%" \
    Makefile

  make PREFIX=/usr
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make PREFIX=/usr DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
