# Maintainer: Elijah Perrault <elijah@starcoder.info>
pkgname=umplayer
pkgver='0.92.4.1'
_realver='0.92-4.1'
pkgrel=1
pkgdesc="The multimedia player that fills all your needs."
arch=('i686' 'x86_64')
url="http://www.umplayer.com"
license=('GPL')
depends=('qt>=4.3' 'mplayer' 'xdg-utils')
makedepends=('rpmextract')
install=umplayer.install

_arch='i386'
md5sums=('27f990a2a51fd4a396d445c5d478960e')
[[ "$CARCH" == "x86_64" ]] && _arch='x86_64' && md5sums[0]='3025a9ddcc093943f23edab97eed4caf'
source=("http://sourceforge.net/projects/umplayer/files/UMPlayer-0.92/Fedora_13/umplayer-${_realver}.${_arch}.rpm/download")

build() {
  cd "$srcdir/"
  rpmextract.sh download
  cp -r usr/ $pkgdir/
}

