# Maintainer: Martin Imobersteg <imm@gmx.ch>
pkgname=smbldap-tools
pkgver=0.9.5
pkgrel=3
pkgdesc="A set of perl scripts designed to manage user and group accounts stored in an LDAP directory."
arch=("i686" "x86_64")
url="https://gna.org/projects/smbldap-tools/"
license=("GPL")
depends=('samba' 'openldap' 'perl-digest-sha1' \
 'perl-unicode-maputf8' 'perl-crypt-smbhash' \
 'perl-ldap' 'perl-io-socket-ssl')
source=("http://download.gna.org/smbldap-tools/packages/${pkgname}-${pkgver}.tgz")
md5sums=('2a9a84c657af35b9c9734a5b1bc5fe8f')
build() {
  cd $startdir/src/${pkgname}-${pkgver}
  install -D -m444 smbldap_tools.pm  ${startdir}/pkg/usr/share/perl5/vendor_perl/smbldap_tools.pm

  mkdir -p ${startdir}/pkg/usr/bin
  for prog in `ls smbldap-group* smbldap-user* smbldap-p*`
  do
    install $prog ${startdir}/pkg/usr/bin
  done

  install -D -m644 smbldap.conf ${startdir}/pkg/etc/smbldap-tools/smbldap.conf
  install -D -m644 smbldap_bind.conf ${startdir}/pkg/etc/smbldap-tools/smbldap_bind.conf
}
