# Maintainer: Emile Pesik <ristridin [at] gmail [dot] com>
# Contributor: Martin Imobersteg <imm [at] gmx [dot] ch>
pkgname=smbldap-tools
pkgver=0.9.6
pkgrel=1
pkgdesc="A set of perl scripts designed to manage user and group accounts stored in an LDAP directory."
arch=("i686" "x86_64")
url="https://gna.org/projects/smbldap-tools/"
license=("GPL")
depends=('samba' 'openldap' 'perl-digest-sha1' \
 'perl-unicode-maputf8' 'perl-crypt-smbhash' \
 'perl-ldap' 'perl-io-socket-ssl')
source=("http://download.gna.org/smbldap-tools/packages/${pkgname}-${pkgver}.tar.gz")
md5sums=('88c371fd16193a03ed0f98fd29f19515')
build() {
  cd $srcdir/${pkgname}-${pkgver}
  install -D -m444 smbldap_tools.pm  $pkgdir/usr/share/perl5/vendor_perl/smbldap_tools.pm

  mkdir -p $pkgdir/usr/bin
  for prog in `ls smbldap-group* smbldap-user* smbldap-p*`
  do
    install $prog $pkgdir/usr/bin
  done

  install -D -m644 smbldap.conf $pkgdir/etc/smbldap-tools/smbldap.conf
  install -D -m644 smbldap_bind.conf $pkgdir/etc/smbldap-tools/smbldap_bind.conf
}
