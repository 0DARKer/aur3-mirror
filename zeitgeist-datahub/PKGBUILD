pkgname=zeitgeist-datahub
pkgver=0.6.0
pkgrel=1
pkgdesc="The datahub provides passive plugins which insert events into Zeitgeist"
url="https://launchpad.net/zeitgeist-datahub"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('python2>=2.5' 'pygobject>=2.16.0' 'dbus-python' 'pyxdg' 'rdflib')
makedepends=('intltool>=0.35.0' 'vala>=0.9.4')
source=(http://launchpad.net/zeitgeist-datahub/0.6/$pkgver/+download/zeitgeist-datahub-$pkgver.tar.gz)
md5sums=('5bc00c7cb2f52034cd1d1c377ca3f046')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  
  #python2 fix
  export PYTHON=/usr/bin/python2

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR=${pkgdir} install
}

