# Maintainer: crazyelf5

pkgname=zeitgeist-datahub
pkgver=0.8.1
pkgrel=1
pkgdesc="The datahub provides passive plugins which insert events into Zeitgeist"
url="https://launchpad.net/zeitgeist-datahub"
license=('GPL3')
arch=('i686' 'x86_64')
depends=('python2' 'pygobject' 'dbus-python' 'pyxdg' 'rdflib' 'zeitgeist' 'libzeitgeist' 'dbus-glib' 'gtk2')
makedepends=('intltool' 'vala')
source=(http://launchpad.net/zeitgeist-datahub/${pkgver%.*}/$pkgver/+download/zeitgeist-datahub-$pkgver.tar.gz)
md5sums=('3fd028fc18c618371502ac580c90014f')

build() {
  cd $pkgname-$pkgver
  
  #python2 fix
  PYTHON=python2

  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
