_pkgname="gnu-efi"
_ver="3.0"
_pkgver="${_ver}p"

pkgname="${_pkgname}"
pkgver="${_pkgver}"

pkgrel=1
pkgdesc="Library for building UEFI Applications using GNU toolchain"
url="http://sourceforge.net/projects/gnu-efi/"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=()
depends=('pciutils')
options=(!strip)

source=("http://download.sourceforge.net/gnu-efi/gnu-efi_${pkgver}.orig.tar.gz")

sha256sums=('96a51181120bac6770756a5604c6fc4085e1cb9a47cb143e5af5a8fac2e4a4de')

build() {
	
	cd "${srcdir}/gnu-efi-${_ver}"
	
	CFLAGS="" make
	echo
	
	make -C apps clean all
	echo
	
}

package() {
	
	cd "${srcdir}/gnu-efi-${_ver}"
	
	make INSTALLROOT="${pkgdir}/usr/" install
	echo
	
	install -d "${pkgdir}/usr/share/gnu-efi/"
	install -D -m644 "${srcdir}/gnu-efi-${_ver}/apps"/*.efi "${pkgdir}/usr/share/gnu-efi/"
	
}
