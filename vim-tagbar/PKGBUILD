# Maintainer: Patrice Peterson <runiq at archlinux dot us>
pkgname=vim-tagbar
pkgver=1.5
pkgrel=1
pkgdesc="Vim plugin that displays tags in a window, ordered by class etc."
arch=('any')
url="http://majutsushi.github.com/tagbar/"
license=('custom:vim')
depends=('ctags>=5.5' 'vim>=7.0')
makedepends=(unzip)
install=vimdoc.install
source=($pkgname-$pkgver.tar.gz::"https://github.com/majutsushi/tagbar/tarball/v$pkgver"
        "LICENSE")
sha256sums=('d13501d98fd1c281bac9f3636f93cd8f827c3d645937582a37531a764a97f00f'
            '446c67d93c43addf076fe103a71844c2d875d478f82186436567dd221f2652f3')

package() {
  cd "$srcdir/majutsushi-tagbar-518b07d"

  _installpath="${pkgdir}/usr/share"
  install -Dm644 doc/tagbar.txt ${_installpath}/vim/vimfiles/doc/tagbar.txt
  install -Dm644 plugin/tagbar.vim ${_installpath}/vim/vimfiles/plugin/tagbar.vim
  install -Dm644 syntax/tagbar.vim ${_installpath}/vim/vimfiles/syntax/tagbar.vim
  install -Dm644 ${srcdir}/LICENSE ${_installpath}/licenses/$pkgname/license.txt

}

# vim:set ts=2 sw=2 et:
