# Maintainer: Sebastian Wiesner <lunaryorn googlemail com>
pkgname=python-virtualenv5
pkgver=1.3.4.5
pkgrel=1
pkgdesc="Python virtualenv with Python 3 support"
arch=('any')
url="http://code.google.com/p/virtualenv5/"
license=('MIT')
makedepends=(python2-distribute)
source=("http://pypi.python.org/packages/source/v/virtualenv5/virtualenv5-${pkgver}.tar.gz")
md5sums=('0fd7516dcaba002218fdad11085afb20')

build() {
    cd "$srcdir/virtualenv5-$pkgver"
    python2 setup.py install --root="$pkgdir" -O1 || return 1
    install -Dm644 docs/license.txt "$pkgdir/usr/share/licenses/$pkgname/license.txt"
}
