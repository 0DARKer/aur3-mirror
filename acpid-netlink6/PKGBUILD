# $Id: PKGBUILD 20371 2008-12-03 02:25:58Z eric $
# Contributor: Manolis Tzanidakis
# Contributor: Judd Vinet <jvinet@zeroflux.org>
# Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=acpid-netlink6
pkgver=1.0.10
pkgrel=1
pkgdesc="A daemon for delivering ACPI power management events, with netlink support"
arch=('i686' 'x86_64')
url="http://acpid.sourceforge.net"
license=('GPL')
depends=(glibc)
source=(
    http://www.tedfelix.com/linux/acpid-$pkgver-netlink6.tar.gz
    acpid)
conflicts=(acpid)
provides=(acpid)
md5sums=('7ae2c8733c7f3fe456df379994020313'
         'b66d1e6ad3ae1a58310de4d52ec22f61')
build() {
    cd $srcdir/acpid-$pkgver-netlink6
    /usr/bin/make || return 1
    /bin/install -d -m0755 $pkgdir/usr/bin || return 1
    /usr/bin/make INSTPREFIX=$pkgdir \
        MAN8DIR=$pkgdir/usr/share/man/man8 install || return 1

    # install our supplementary scripts
    /bin/install -D -m0755 $srcdir/acpid $pkgdir/etc/rc.d/acpid || return 1

    # set world readable bit on the acpid binary
    /bin/chmod 755 $pkgdir/usr/sbin/acpid || return 1
}
