# Contributor: Daniel Ehlers <danielehlers@mindeye.net>
# Maintainer: Dejan ÄŒabrilo <dcabrilo@gmail.com>
pkgname=phpdocumentor
pkgver=1.4.2
pkgrel=2
arch=('i686' 'x86_64')
pkgdesc="phpDocumentor is the world standard auto-documentation tool for PHP."
url="http://www.phpdoc.org"
license="LGPL"
depends=('php' )
source=("http://downloads.sourceforge.net/phpdocu/PhpDocumentor-${pkgver}.tgz")
md5sums=(778bea6edb876c70d906bec8c4490a0e)

build() {
  install -d $startdir/pkg/usr/share/php
  install -d $startdir/pkg/usr/bin
  cp -r $startdir/src/PhpDocumentor-$pkgver $startdir/pkg/usr/share/php/phpdocumentor
  cd $startdir/pkg
  chmod +x usr/share/php/phpdocumentor/phpdoc
  ln -s  /usr/share/php/phpdocumentor/phpdoc usr/bin/phpdoc
}
