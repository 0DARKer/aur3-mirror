pkgname=owncloud-app-notes-git
pkgver=1
pkgrel=1
pkgdesc="Owncloud notes app"
arch=('any')
url="https://github.com/owncloud/notes"
license=('AGPL')
depends=('owncloud')
makedepends=()
options=('!strip')
conflicts=('owncloud-app-notes')
source=("git+https://github.com/owncloud/notes.git")
sha512sums=("SKIP")

pkgver() {
  cd "$SRCDEST/${_pkgname}"
  git describe --always | sed 's|-|.|g' | cut -f2 -d"v"
}

package() {
  install -d "${pkgdir}/usr/share/webapps/owncloud/apps"
  cp -a "${srcdir}/notes" "${pkgdir}/usr/share/webapps/owncloud/apps/notes"
}
