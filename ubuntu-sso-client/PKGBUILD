# Contributor: Leonid Selivanov <bravebug at gmail dot com>

pkgname=ubuntu-sso-client
pkgver=1.3.2
pkgrel=1
pkgdesc="Ubuntu Single Sign On Client"
arch=('any')
url="https://launchpad.net/ubuntu-sso-client"
license=('GPL3')
groups=()
depends=('dbus-python' 'gnome-keyring' 'lazr.restfulclient' 'pygtk' 
'python2>=2.7.1' 'python2<<2.8'
'python2-mocker' 'python2-oauth' 'pywebkitgtk' 'pyxdg' 'twisted') 
makedepends=('python2>=2.6.6' 'python-distutils-extra>=2.10')
optdepends=()
provides=('$pkgname=$pkgver')
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz python2.patch)
noextract=()
md5sums=('acb505206e4f0f815df1d6fb677f4b3e' '56e0041c7e1695a433118320d0a4fc69')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p1 -i ../python2.patch
  python2 setup.py install --root=$pkgdir/
}
