pkgname=ubuntu-sso-client
pkgver=2.99.1
pkgrel=1
pkgdesc="Ubuntu Single Sign On Client"
arch=('any')
url="https://launchpad.net/ubuntu-sso-client"
license=('GPL3')
groups=()
depends=('dbus-python' 'gnome-keyring' 'lazr.restfulclient' 'pygtk' \
'python2>=2.7.1' 'python2<<2.8' 'python2-oauth' 'python2-pyqt' \
'pywebkitgtk' 'pyxdg' 'twisted')
makedepends=('python2>=2.6.6' 'python-distutils-extra>=2.10')
optdepends=('python2-mocker')
provides=('$pkgname=$pkgver')
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://launchpad.net/$pkgname/stable-3-0/$pkgver/+download/$pkgname-$pkgver.tar.gz 
python2.patch)
noextract=()
md5sums=('245d6bec59abc557e6c61225e283c6b5' '949aa8edafcf699ce47701b6b90b2284')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p1 -i ../python2.patch
  python2 setup.py install --root=$pkgdir/
}
