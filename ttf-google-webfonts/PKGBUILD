pkgname=ttf-google-webfonts
pkgver=120803
pkgrel=2
pkgdesc="Google Web Fonts catalog."
arch=('any')
url="http://code.google.com/p/googlefontdirectory/issues/detail?id=2"
license=('various')
depends=('fontconfig' 'xorg-fonts-encodings')
conflicts=('jsmath-fonts' 'lohit-fonts' 'otf-goudy' 'ttf-andika'
           'ttf-anonymous-pro' 'ttf-cantarell' 'ttf-cardo'
           'ttf-chromeos-fonts' 'ttf-droid' 'ttf-inconsolata'
           'ttf-kimberly_geswein_print' 'ttf-oldstandard'
           'oldstand-font' 'ttf-ptsans' 'ttf-pt-sans'
           'ttf-sil-fonts' 'ttf-ubuntu-font-family'
           'ttf-vollkorn' 'googlefontdirectory' 'ttf-source-sans-pro')
install=font.install
source=('https://github.com/w0ng/googlefontdirectory/tarball/master')
md5sums=('4f937df28b979b3e6e347ba008d27e7c')

package() {
  cd "$srcdir"
  install -dm755 "$pkgdir/usr/share/fonts/TTF"
  find . -type f -name \*.ttf -exec install -Dm644 '{}' \
    "$pkgdir/usr/share/fonts/TTF" \;
}
