_pkgname=vim-javascript
pkgname=vim-javascript-git
pkgver=1395101180
pkgrel=1
pkgdesc="Vastly improves Vim's JavaScript indentation"
arch=('any')
url='https://github.com/pangloss/vim-javascript'
license=('custom:vim')
depends=('vim')
makedepends=('git')
provides=('vim-javascript')
conflicts=('vim-javascript')

source=('git://github.com/pangloss/vim-javascript.git')
sha512sums=('SKIP')

pkgver() {
  cd -- "$srcdir/$_pkgname"
  git log -n1 --pretty=format:%ct
}

package() {
  cd "$srcdir/$_pkgname"
  install -dm755 "$pkgdir/usr/share/vim/vimfiles"
  find * -maxdepth 0 -type d -exec cp -R -t "$pkgdir/usr/share/vim/vimfiles" '{}' \+
}

