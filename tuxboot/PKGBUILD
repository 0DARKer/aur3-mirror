# Maintainer: Simone Sclavi 'Ito' <darkhado@gmail.com>
# based on the unetbootin PKGBUILD
pkgname=tuxboot
pkgver=0.3
pkgrel=1
pkgdesc="A tool that helps you to create a bootable Live USB drive for Clonezilla live, DRBL live, GParted live and Tux2live"
url="http://www.tuxboot.org/"
license=('GPL')
arch=('i686' 'x86_64')
source=(http://switch.dl.sourceforge.net/project/${pkgname}/${pkgver}/ubuntu-oneiric-x86/${pkgname}_${pkgver}ubuntu2.tar.gz)
depends=('syslinux' 'p7zip' 'qt' 'mtools' )
optdepends=('gksu: for graphically requesting the root password'
            'kdebase-runtime: for graphically requesting the root password')
md5sums=('3bf290fe8911d037fd9c002338c68b31')
build() {
   cd $pkgname-$pkgver
   sed -i '/^RESOURCES/d' ${pkgname}.pro
   lupdate ${pkgname}.pro
   lrelease ${pkgname}.pro
   qmake "DEFINES += NOSTATIC" "RESOURCES -= tuxboot.qrc" ${pkgname}.pro
   make
}

package() {
   cd $pkgname-$pkgver
   install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
   mkdir -p ${pkgdir}/usr/share/${pkgname}
   install -m644 i18n/${pkgname}_*.qm "${pkgdir}/usr/share/${pkgname}/"
   install -Dm644 ${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
   install -Dm644 ${pkgname}.xpm  ${pkgdir}/usr/share/pixmaps/${pkgname}.xpm
}
