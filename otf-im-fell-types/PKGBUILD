# Maintainer: OmeGa <omg@vmail.me>

pkgname=otf-im-fell-types
pkgver=20121117
pkgrel=1
pkgdesc="A set of free modern revival fonts, with ligatures, swash characters, and ornaments, digitalized by Igino Marini."
arch=('any')
url="http://iginomarini.com/fell/"
license=('custom:OFL')
depends=('fontconfig' 'xorg-font-utils')
source=("http://iginomarini.com/fell/wp-content/uploads/IMFellTypesClass.zip"
     "OFL.txt")
sha1sums=('dd228201eea5c24d15aa51ac058ae056a7315e20'
     '0fdc6a354c80cc47f8025d00c2baeafa019be7a5')

install=otf.install

package() {
  # Fonts
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeDPit29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeDPrm29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeENit29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeENrm29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeFCit29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeFCrm29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeFlow1.otf     ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeFlow2.otf     ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeGPit29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeGPrm29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFePIit29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFePIrm29C.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/IMFeTLrm29C.otf   ${pkgdir}/usr/share/fonts/TTF

  # License
  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 ${srcdir}/OFL.txt   ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
