pkgname=amrnb
pkgver=10.0.0.0
pkgrel=1
pkgdesc="3GPP Adaptive Multi-Rate Floating-point (AMR) Speech Codec"
arch=('i686' 'x86_64')
url="http://www.penguin.cz/~utx/amr"
license=('BSD-3')
depends=('glibc')
options=('!libtool')
source=(http://ftp.penguin.cz/pub/users/utx/amr/amrnb-$pkgver.tar.bz2)
# Is this still needed? http://www.3gpp.org/ftp/Specs/archive/26_series/26.104/26104-700.zip)
md5sums=('b83654e7be037989f61fe87a9a460783')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir"/ install

# Need to install license
}
