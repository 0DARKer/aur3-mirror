pkgname=craftbukkit-plugin-horseutils
pkgver=0.1
pkgrel=1
pkgdesc="Craftbukkit mod that allows you to god, lock, direct claim and nickname horses."
arch=(any)
url="http://dev.bukkit.org/bukkit-plugins/horseutils/"
license=("LGPLv3")
depends=("craftbukkit")
source=("http://dev.bukkit.org/media/files/718/166/HorseUtils-V0.1.jar")
noextract=("HorseUtils-V0.1.jar")
md5sums=('ce86ee43a0e1be3b37a4a2f0d9f7fc67')

package() {
  install -Dm644 "$srcdir/HorseUtils-V0.1.jar" "$pkgdir/srv/craftbukkit/plugins/HorseUtils-V0.1.jar"
}

