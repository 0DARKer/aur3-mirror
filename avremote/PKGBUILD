# Maintainer: SpepS <dreamspepser at yahoo dot it>

_pkg=AVRemote
pkgname=avremote
pkgver=0.4.0
pkgrel=1
pkgdesc="A tool to send UPNP commands to devices supporting the AVTransport 1 and 2 specifications."
arch=(i686 x86_64)
url="http://syncstarter.org/ivysync/"
license=('AGPL')
depends=('glibc')
source=("http://ftp.dyne.org/$pkgname/releases/$_pkg-$pkgver.tar.gz")
md5sums=('8bdb3d0e1ad408ff2462c46aa64e578e')

build() {
  cd "$srcdir/$_pkg-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_pkg-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
