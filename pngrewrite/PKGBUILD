# Maintainer:  TDY <tdy@gmx.com>
# Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=pngrewrite
pkgver=1.3.0
pkgrel=2
pkgdesc="A commandline utility for optimizing PNG files"
arch=('i686' 'x86_64')
url="http://entropymine.com/jason/pngrewrite/"
license=('custom')
depends=('libpng')
source=(http://entropymine.com/jason/pngrewrite/$pkgname-$pkgver.zip)
md5sums=('37216932d12bf9b47dca1f45724080d6')

build() {
  cd "$srcdir"
  sed -n '14,30 p' $pkgname.c > COPYING
  make CFLAGS="$CFLAGS -DPNG_SETJMP_NOT_SUPPORTED" || return 1
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
