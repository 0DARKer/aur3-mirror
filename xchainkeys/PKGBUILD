# Maintainer: Henning Bekel <h.bekel@googlemail.com>

pkgname=xchainkeys  
pkgver=0.7
pkgrel=1 
pkgdesc="Standalone keychains for X11"
url="http://code.google.com/p/xchainkeys/"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('libx11')
source=(http://xchainkeys.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('179a97cfa49c44c3627c348d0a3e45d9')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make 
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
