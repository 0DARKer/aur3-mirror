# Maintainer: Henning Bekel <h.bekel@googlemail.com>

pkgname=xchainkeys  
pkgver=0.9.1
pkgrel=1 
pkgdesc="Standalone keychains for X11"
url="http://code.google.com/p/xchainkeys/"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('libx11')
source=(http://xchainkeys.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('4d0b512eb12b0b5a77f53979a4145c3c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make 
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
