# Maintainer: Michael Seiwald <michael@mseiwald.at>
pkgname=lastpass
pkgver=1.70.1
pkgrel=2
pkgdesc="Lastpass pocket for backup and offline access"
arch=('i686' 'x86_64')
url="https://lastpass.com"
license=("LastPass")
depends=("ca-certificates" "openssl098" "libldap" "libidn" "libkrb53" "ca-certificates")
source=("https://lastpass.com/pocket")
options=("!strip")
md5sums=('ccb18ea6b6751342f1ba7f2b879eaa11')
[ "$CARCH" = "x86_64" ] && source=(https://lastpass.com/pocket_x64)
[ "$CARCH" = "x86_64" ] && md5sums=('01e9761c5181d2f7dd989cf5b683ed07')

package() {
	if [ "$CARCH" == "i686" ];then
		install -Dm 755 "$srcdir/pocket" "$pkgdir/usr/bin/lastpass"  || return 1
	elif [ "$CARCH" == "x86_64" ];then
		install -Dm 755 "$srcdir/pocket_x64" "$pkgdir/usr/bin/lastpass"  || return 1
	fi
}

