# Maintainer: Joshua Stiefer <facedelajunk@gmail.com>
# Contributor: Michael Seiwald <michael@mseiwald.at>

pkgname=lastpass
pkgver=1.80.0
pkgrel=2
pkgdesc="Lastpass pocket for backup and offline access"
arch=('i686' 'x86_64')
url="https://lastpass.com"
license=("LastPass")
depends=("ca-certificates" "openssl-compatibility" "libldap" "libidn" "gtk2")
source=("https://rodan.lastpass.com/pocket.tar.bz2")
options=("!strip")
md5sums=('7ac41bdb30729279508f74e3db2a7158')
[ "$CARCH" = "x86_64" ] && source=(https://rodan.lastpass.com/pocket_x64.tar.bz2)
[ "$CARCH" = "x86_64" ] && md5sums=('b81cb36506958679d1fd85b60a97ebe1')


package() {
	if [ "$CARCH" == "i686" ];then
		install -Dm 755 "$srcdir/pocket" "$pkgdir/usr/bin/lastpass"
	elif [ "$CARCH" == "x86_64" ];then
		install -Dm 755 "$srcdir/pocket_x64" "$pkgdir/usr/bin/lastpass"
	fi
}
