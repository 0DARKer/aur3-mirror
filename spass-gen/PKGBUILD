# 
# 
pkgname=spass-gen
_pkgname=spass
pkgver=3.1
pkgrel=1
pkgdesc="Cryptographically secure random password/passphrase generator"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/spass"
license=('GPL3')
depends=('alsa-lib' 'boost-libs')
source=("http://downloads.sourceforge.net/project/${_pkgname}/${_pkgname}-$pkgver/${_pkgname}-${pkgver}.tar.xz?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Fspass%2Ffiles%2F${_pkgname}-${pkgver}%2F&ts=1367556909&use_mirror=iweb")
md5sums=('7b8a58e4ebe70952e2a860266c9f4f89')

prepare() {
    cd "$srcdir/$_pkgname-$pkgver"

    mkdir -p build

}

build() {
    cd "$srcdir/$_pkgname-$pkgver/build"

    cmake ../

    make 
}

package() {
    cd "$srcdir/$_pkgname-$pkgver/build"

    install -m 755 -D "$_pkgname" "$pkgdir/usr/bin/$pkgname"

    cd ../

    install -m 644 -D "COPYING" "$pkgdir/usr/share/doc/$pkgname/COPYING"

    install -m 644 -D "README.rst" "$pkgdir/usr/share/doc/$pkgname/README"

}
