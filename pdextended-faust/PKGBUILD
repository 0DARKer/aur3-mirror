# Maintainer: Albert Graef <aggraef at gmail dot com>

pkgname=pdextended-faust
_pkgname=pd-faust
pkgver=0.5
pkgrel=2
pkgdesc="Run Faust signal processors in Pd, Pd-Extended version"
arch=('i686' 'x86_64')
url="http://purelang.bitbucket.org/"
depends=('pd-extended' 'faust' 'pure'  'pdextended-pure' 'pure-faust' 'pure-audio' 'pure-midi' 'pure-stldict')
license=('LGPL3')
source=(https://bitbucket.org/purelang/pure-lang/downloads/$_pkgname-$pkgver.tar.gz)
md5sums=('b1fdc81869a57599b65a681596c98b97')

build() {
  cd $srcdir/$_pkgname-$pkgver
  make PD=pd-extended prefix=/usr
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  make PD=pd-extended DESTDIR=$pkgdir prefix=/usr install 
}
