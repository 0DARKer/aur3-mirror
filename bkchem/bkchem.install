post_install() {
  cat << EOT

==> To enable InChI/InChIKey strings generation in BKChem,
==> you have to install cinchi or stdinchi, and set
==> Options -> InChI program path in bkchem to
==> /usr/bin/cinchi or /usr/bin/stdinchi, respectively.

EOT
}

post_upgrade() {
  post_install
}

op=$1
shift
$op $*
