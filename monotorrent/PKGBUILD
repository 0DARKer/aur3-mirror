pkgname=monotorrent
pkgver=0.80
pkgrel=4
pkgdesc="A C sharp torrent library"
arch=('any')
url="http://www.monotorrent.com"
license=('custom')
depends=('mono')
source=(http://projects.qnetp.net/attachments/download/28/${pkgname}-${pkgver}.tar.gz 'LICENSE')
md5sums=('1ddedf5132317fe368c9f9fa29d50cec'
         '04a419518ead803da4ac28bb5ba1aee3')

build() {
   cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make 
  }
package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	install -d ${pkgdir}/usr/share/licenses/${pkgname}
  make DESTDIR=${pkgdir}/ install
  install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}
}
