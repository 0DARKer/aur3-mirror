pkgname=monotorrent
pkgver=0.80
pkgrel=5
pkgdesc="A C sharp torrent library"
arch=('any')
url="http://www.monotorrent.com"
license=('custom')
depends=('mono')
options=('!emptydirs')
source=("http://www.monotorrent.com/attachments/download/28/${pkgname}-${pkgver}.tar.gz" "LICENSE")
md5sums=('1ddedf5132317fe368c9f9fa29d50cec'
         '5528cdc7971b44c8e2e3964441395b2e')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"

    make DESTDIR="$pkgdir" install

    install -D -m644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
