pkgname=linksys-tftp
pkgver=1.2.1
pkgrel=1
pkgdesc="TFTP client designed for a non-standard tftp authentication process"
arch=(i686 x86_64)
url="http://www.redsand.net/projects/linksys-tftp/linksys-tftp.php"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://www.redsand.net/projects/linksys-tftp/pub/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('f536f778dcbcb4a65838042ca0a2a454')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p $pkgdir/usr/bin

  make || return 1
  cp linksys-tftp $pkgdir/usr/bin
}
