# Contributor: Nathan Owe <ndowens04 at gmail>
pkgname=scrollz
pkgver=2.2
pkgrel=1
pkgdesc="an advanced IRC client based on ircII"
arch=('i686')
url="http://www.scrollz.com"
license=('custom')
depends=('ncurses')
source=(http://www.scrollz.com/download/ScrollZ-$pkgver.tar.gz)
md5sums=('804fb4fa553d6e3881109f28c5a87e65')

build() {
  cd $srcdir/ScrollZ-$pkgver
 mkdir -p $pkgdir/usr/share/$pkgname
  ./configure --prefix=$pkgdir/usr
  make || return 1
  make datadir=$pkgdir/usr/share mandir=$pkgdir/usr/share/man install
install -Dm644 COPYRIGHT $pkgdir/usr/share/licenses/$pkgname/COPYRIGHT
}

# vim:set ts=2 sw=2 et:

