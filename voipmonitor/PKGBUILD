pkgname=voipmonitor
pkgver=10.0.39
pkgrel=1
pkgdesc="Open source live network packet sniffer and call recorder which analyzes SIP and RTP protocol."
arch=('i686' 'x86_64')
url="http://www.voipmonitor.org/"
license=('GPL2')
depends=('zlib' 'mysql++' 'libpcap')
source=(http://downloads.sourceforge.net/project/$pkgname/10.0/$pkgname-$pkgver-src.tar.gz)
md5sums=('ff4b6011a4557f67b3447b16514b7011')


build() {
  cd ${srcdir}/${pkgname}-${pkgver}-src

  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-src
  make DESTDIR=${pkgdir} install
}

