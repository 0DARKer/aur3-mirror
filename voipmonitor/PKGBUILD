# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=voipmonitor
pkgver=2.2
pkgrel=1
pkgdesc="Open source live network packet sniffer and call recorder which analyzes SIP and RTP protocol."
arch=('i686' 'x86_64')
url="http://www.voipmonitor.org/"
license=('GPL2')
depends=('zlib' 'mysql++' 'libpcap')
source=(https://sourceforge.net/projects/voipmonitor/files/${pkgver}/${pkgname}-${pkgver}.tar.gz Makefile.patch)
md5sums=('3a20e7dc750d5ceaf3b5b5cf21cad02f'
  'fc79f1d1708c69a032ce74afb610863f')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  msg "Patching"
  patch -p1 -i ${srcdir}/Makefile.patch
  
  msg "Building..."
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  msg "Installing..."
  make DESTDIR=${pkgdir} install
}

# vim:set ts=2 sw=2 et:
