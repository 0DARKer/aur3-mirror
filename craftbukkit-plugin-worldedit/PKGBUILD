pkgname=craftbukkit-plugin-worldedit
pkgver=146p17
pkgrel=1
pkgdesc="easy-to-use in-game world editor for Minecraft, supporting both single player and multiplayer"
arch=(any)
url="http://dev.bukkit.org/server-mods/worldedit"
license=("GPLv3")
depends=("craftbukkit>=1.4.6r0.3")
optdepends=("rhino: To use craftscripts")
source=("http://build.sk89q.com/job/WorldEdit%20-%201.4.6%20Compatible/lastSuccessfulBuild/artifact/target/worldedit-5.4.6-TEMPFIX2.zip")
md5sums=('fa6efdb598900dbe03252f675fce8ccc')

package() {
  cd $srcdir
  find . -name '*.jar' | xargs -rtl1 -I {} install -Dm644 {} "$pkgdir/srv/craftbukkit/plugins/"{}
  cp -r "contrib/craftscripts" "$pkgdir/srv/craftbukkit"
  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
}

