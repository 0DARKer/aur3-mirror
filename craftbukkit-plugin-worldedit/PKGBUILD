pkgname=craftbukkit-plugin-worldedit
pkgver=5.6
pkgrel=1
pkgdesc="easy-to-use in-game world editor for Minecraft, supporting both single player and multiplayer"
arch=(any)
url="http://dev.bukkit.org/server-mods/worldedit"
license=("GPLv3")
makedepends=(dos2unix)
depends=("craftbukkit>=1.6.4")
source=("http://dev.bukkit.org/media/files/776/558/worldedit-5.6.zip")
md5sums=('f98ac5e9ced45d6731ce2b6ca6dccd50')

package() {
  cd "$srcdir"
  dos2unix LICENSE.txt
  find . -name '*.jar' -exec install -Dm644 {} "$pkgdir/srv/craftbukkit/plugins/"{} \;
  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
}

# vim:set ts=2 sw=2 et:
