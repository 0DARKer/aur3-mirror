# Maintainer: Chris Down <cdown.uk@gmail.com>

pkgname=cush
pkgver=1.0
pkgrel=1
pkgdesc="Command line URL shortener using the is.gd service."
arch=('any')
url="https://github.com/cdown/cush"
license=('CCPL')
source=("http://fakkelbrigade.eu/chris/aur/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('f9d2e71c0acf05438c037e6c2e34b903')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	install -d ${pkgdir}/usr/bin/
	install -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}

	pod2man --section=1 --center=" " --name="${pkgname^^}" --release="${pkgname} ${pkgver}" README.pod ${pkgname}.1
	gzip ${pkgname}.1
	install -Dm644 ${pkgname}.1.gz ${pkgdir}/usr/share/man/man1/${pkgname}.1.gz
}
