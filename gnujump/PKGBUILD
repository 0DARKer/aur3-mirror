# Contributor: Anton Bazhenov <anton.bazhenov at gmail>
# Contributor: Patrik Ilg <p.ilg@arcor.de>

pkgname=gnujump
pkgver=1.0.6
pkgrel=1
pkgdesc="A clone of the simple yet addictive game Xjump"
arch=('i686' 'x86_64')
url="http://gnujump.es.gnu.org/index.php/Main_Page"
license=('GPL3')
depends=('sdl_image' 'sdl_mixer' 'libgl')
source=(ftp://ftp.gnu.org/gnu/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('8433eee5d2d54104bc686d57c2a1deba')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
