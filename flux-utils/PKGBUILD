pkgname=flux-utils
pkgver=2.3
pkgrel=1
pkgdesc="Scripts and utilities included in flux capacity"
arch=('i686' 'x86_64')
url=(http://fluxcapacity.99k.org)
license=('GPL2')
depends=('samba' 'cups' 'yad' 'util-linux-ng')
optdepends=()
source=(http://sourceforge.net/projects/fluxutils/files/flux-utils-latest.tar.gz)
md5sums=(0cd2d21393775df0e3d2db815b85da9b)

build() {
#  cd ${srcdir}/${pkgver}
mkdir -p ${pkgdir}/usr/bin
cp -p ${srcdir}/src/addflash ${pkgdir}/usr/bin
cp -p ${srcdir}/src/afpgui ${pkgdir}/usr/bin
cp -p ${srcdir}/src/cupsadm ${pkgdir}/usr/bin
cp -p ${srcdir}/src/fchelp ${pkgdir}/usr/bin
cp -p ${srcdir}/src/flux2hd ${pkgdir}/usr/bin
cp -p ${srcdir}/src/hotkeys ${pkgdir}/usr/bin
cp -p ${srcdir}/src/orphan ${pkgdir}/usr/bin
cp -p ${srcdir}/src/daemon ${pkgdir}/usr/bin
cp -p ${srcdir}/src/daemondialog ${pkgdir}/usr/bin
cp -p ${srcdir}/src/smbadm ${pkgdir}/usr/bin
}
