# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>

pkgname=(fortune-mod-archer)
pkgver=(0.1)
pkgrel=(2.2)
pkgdesc="Archer FXNetwork fortune cookies"
url=("http://dl.dropbox.com/u/14015956/fortune-mod/fortune-mod-archer")
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname-$pkgver.tar.xz)

md5sums=('5e4ff3b43d1c7182ab2d134983557bb4')
build() {
  mkdir $srcdir/$pkgname-$pkgver/
  xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
  mv -i $srcdir/archer $srcdir/$pkgname-$pkgver/
  strfile $srcdir/$pkgname-$pkgver/archer
  install -d $pkgdir/usr/share/fortune || return 1
  install -m 644 $srcdir/$pkgname-$pkgver/archer* $pkgdir/usr/share/fortune \
    || return 1
}

