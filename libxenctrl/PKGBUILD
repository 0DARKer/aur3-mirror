pkgname=libxenctrl
pkgver=4.0.0
pkgrel=1
pkgdesc="Static libraries and header files for Xen"
arch=('i686' 'x86_64')
url="http://www.xen.org/"
license=('GPL')

if [ "${CARCH}" = 'x86_64' ]; then
  source=(ftp://fr2.rpmfind.net/linux/Mandriva/devel/cooker/x86_64/media/main/release/lib64xen-devel-$pkgver-1mdv2010.1.x86_64.rpm)
  md5sums=('43ac99b6822b36033a6ec784f41de50b')
elif  [ "${CARCH}" = 'i686' ]; then 
  source=(http://mirrors.kernel.org/mandrake/Mandrakelinux/devel/cooker/i586/media/main/release/libxen-devel-$pkgver-1mdv2010.1.i586.rpm)
  md5sums=('4b44bab1f85d09f476a8c1b704a1ec53')
fi

build() {
  cd $startdir

  bsdtar xf lib* -C $pkgdir
}
