pkgname=gtmess
pkgver=0.96
pkgrel=beta3
pkgdesc="A console MSN Messenger client for Linux and other unix systems that conform to the POSIX standard."
arch=('i686' 'x86_64')
url="http://gtmess.sourceforge.net/"
license=('GPL')
depends=()
source=('http://downloads.sourceforge.net/project/gtmess/gtmess/0.96/gtmess-0.96beta3.tar.gz')
md5sums=('d2d2a2070d214d78ee7cfecdefc6b16f')

build() {
  cd $startdir/src/gtmess-$pkgver$pkgrel
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install
}
