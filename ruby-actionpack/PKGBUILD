# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-actionpack
_gemname=${pkgname#ruby-}
pkgver=3.1.3
pkgrel=1
pkgdesc="On rails from request to response."
arch=('any')
url="http://www.rubyonrails.org"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-activemodel' 'ruby-activesupport' 'ruby-builder' 'ruby-erubis' \
         'ruby-i18n' 'ruby-rack' 'ruby-rack-cache' 'ruby-rack-mount' 'ruby-rack-test' 'ruby-sprockets' )
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('8a11c08de5029bb2291790aa2340474a')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
