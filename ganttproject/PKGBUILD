# Contributor: David Fuhr <david.fuhr@web.de>
pkgname=ganttproject
pkgver=2.0.10
pkgrel=1
pkgdesc="GanttProject is a project scheduling application written in Java and featuring gantt chart, resource management, calendaring, ...)."
arch=('i686' 'x86_64')
url="http://ganttproject.sourceforge.net/"
license="GPL"
depends=(java-runtime x-server)
makedepends=(unzip)
conflicts=()
replaces=()
backup=()
install=
source=(http://ganttproject.googlecode.com/files/$pkgname-$pkgver.zip ganttproject ganttproject.desktop ganttproject.sh ganttproject16.png ganttproject32.png ganttproject64.png ganttproject96.png)
md5sums=('9e3c5929a248b45ea06a74850640e1ef'
         '5cc7579e237f56e3a2ab6a415f9299e7'
         '9e981a289853a035fc843ccd5eb32a02'
         'f0c6325dccefbfc58192f42ae94be256'
         '3ad8264b0d0b04ac9195bd79192347cf'
         'e141ccf49e26955b2695ca98d9f85436'
         'f67556d58dfbbc4770feb913aed6ea95'
         'c29c53a1cc807f35c093adc44731dbe0')

build() {
  rm $startdir/src/$pkgname-$pkgver/ganttproject.bat

  mkdir -p $startdir/pkg/opt/
  mv $startdir/src/$pkgname-$pkgver $startdir/pkg/opt/$pkgname

  install -m0644 $startdir/*.png $startdir/pkg/opt/$pkgname
  install -D -m0755 $startdir/ganttproject $startdir/pkg/opt/$pkgname/bin/ganttproject
  install -D -m0755 $startdir/ganttproject.sh $startdir/pkg/etc/profile.d/ganttproject.sh
  install -D -m0644 $startdir/ganttproject.desktop $startdir/pkg/usr/share/applications/ganttproject.desktop
}
