# Contributor: mpie <michael.kyne-phillips1@ntlworld.com>
pkgname=ifpgui
pkgver=0.10.8
pkgrel=2
pkgdesc="Qt front end for ifplib"
url="http://ifpgui.sourceforge.net/"
license=""
depends=('libusb' 'qt' )
source=(http://dl.sourceforge.net/sourceforge/ifpgui/$pkgname-$pkgver.tar.gz Iriver.desktop ifp.png)
md5sums=('98a0ee1e0b41d362ec411737887d767c' 'dbbe5680a212e17f0411906c4c725935'\
         'e8959842720d5a93067fa24f2642a43d')
build() {
  cd $startdir/src/$pkgname-$pkgver
sed -i -e"s:/usr/lib/qt3/mkspecs/default/qmake.conf:/opt/qt/mkspecs/linux-g++/qmake.conf:g" Makefile
./build.sh
cd src
 qmake  src.pro|| return 1
cd ..
install -D bin/ifpgui $startdir/pkg/usr/bin/ifpgui
install -D nonroot.sh $startdir/pkg/usr/bin/nonroot.sh
install -D $startdir/Iriver.desktop $startdir/pkg/usr/share/applications/Iriver.desktop
install -D $startdir/ifp.png $startdir/pkg/usr/share/pixmaps/ifp.png
}
