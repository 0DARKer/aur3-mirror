# For ArchLinux by JoÃ«l Porquet

pkgname=dtc
pkgver=1.2.0
pkgrel=1
pkgdesc="Device Tree Compiler"
url="http://jdl.com/software/"
arch=('i686' 'x86_64')
license=('GPL2')
source=("http://jdl.com/software/${pkgname}-v${pkgver}.tgz")

build() {
	cd ${srcdir}/${pkgname}-v${pkgver}

    make || return 1
    make INSTALL=$(which install) DESTDIR=${pkgdir} PREFIX=/usr install || return 1
}

md5sums=('0f1841de79abbff57691adc31d5f3525')
