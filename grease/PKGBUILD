# Maintainer: Andrew Rose <hello@andrewrose.co.uk>
# Contributor: Andrew Rose <hello@andrewrose.co.uk>

pkgname=grease
pkgver=6d885b0
pkgrel=1
pkgdesc="A PHP editor written in PHP using wxPHP"
arch=('any')
url="https://github.com/AndrewRose/Grease"
license=('MIT')
depends=('php' 'php-wxwidgets-git' 'pecl-event')
makedepends=('git')
source=('git+https://github.com/AndrewRose/Grease.git')
md5sums=('SKIP')

_gitname="Grease"

pkgver () {
  cd $srcdir/$_gitname
  echo $(git describe --always | sed 's/-/./g')
}

package() {
  cd $srcdir/$_gitname
  
  install -d "$pkgdir/usr/share/grease"
  cp -r "ico" "$pkgdir/usr/share/grease"
  install -Dm644 "grease.wxphp" "$pkgdir/usr/share/grease/grease.wxphp"
  install -Dm644 "libxdebugd.php" "$pkgdir/usr/share/grease/libxdebugd.php"
  install -Dm644 "xdebugd.php" "$pkgdir/usr/share/grease/xdebugd.php"

  install -d "$pkgdir/usr/bin"
  echo "php /usr/share/grease/xdebugd.php && php -d open_basedir= /usr/share/grease/grease.wxphp &" > $pkgdir/usr/bin/grease
  chmod +x $pkgdir/usr/bin/grease
}
