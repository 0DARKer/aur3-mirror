pkgname=ckmame
pkgver=0.10
pkgrel=2
pkgdesc="A program to check ROM sets for MAME"
arch=('i686' 'x86_64')
url="http://www.nih.at/ckmame/"
license=('custom')
depends=('libzip' 'sqlite3' 'libxml2')
source=(http://www.nih.at/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('947eb593cff750c66d176ad9e0b81c4d')

build() {
  cd "$srcdir"/$pkgname-$pkgver

  # make and install
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1

  # install license
  sed -n "/  Copyright/,/SUCH DAMAGE/p" src/ckmame.c > COPYING
  install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
