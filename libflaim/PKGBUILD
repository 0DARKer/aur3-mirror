# Maintainer: Frane Bandov <frane@offbyte.com>

pkgname=libflaim
pkgver=4.9.617
pkgrel=1
license=('GPL')
pkgdesc="An embeddable cross-platform database engine"
arch=('i686' 'x86_64')
url="http://forge.novell.com/modules/xfmod/project/?flaim"
force=y
depends=()
source=(http://forgeftp.novell.com/ifolder/client/3.4/20060802-0101/src/libflaim-$pkgver.tar.gz
	kybuild.patch
	ftk.patch)
md5sums=('5f10a5d30d2261a99eac8458b412bc3d' 
	 '94e7e2cf1a9375e946fb63fd58ffdbbf' 
	 'b3c1bb3375fc6af3f4f21c83d7384a97')

build() {
  export host_os_family="linux"
  #Arch64 fix 
  if [ "$CARCH" = "x86_64" ]; then
     export HOSTTYPE="x86_64"
  else export HOSTTYPE="x86"
  fi

  cd $startdir/src/$pkgname-$pkgver

  patch -p0 -i ../kybuild.patch
  patch -p0 -i ../ftk.patch

  make || return 1
  make install_prefix=$startdir/pkg/usr install

}
