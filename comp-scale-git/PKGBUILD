# Maintainer: Moritz Maxeiner <moritz@ucworks.org>

pkgname=comp-scale-git
_gitname=comp-scale
pkgver=160.6014911
pkgrel=1
pkgdesc="Enlightenment e17 module: Scale windows down to see them all. Side by side. Latest git version for use with enlightenment17-git, aka e18 development cycle"
arch=('i686' 'x86_64')
url="http://git.enlightenment.org/enlightenment/modules/comp-scale.git/"
license=('MIT')
depends=('enlightenment17-git')
makedepends=('git')
provides=('comp-scale')
options=('!libtool')
source=()
conflicts=('e-modules-extra' 'comp-scale' 'comp-scale-svn')
source=("$_gitname::git://git.enlightenment.org/enlightenment/modules/comp-scale.git")
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  # Use the tag of the last commit
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$_gitname"
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$_gitname"
  make DESTDIR="$pkgdir/" install

  install -D -m644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
  install -D -m644 COPYING-PLAIN $pkgdir/usr/share/licenses/$pkgname/COPYING-PLAIN
}
