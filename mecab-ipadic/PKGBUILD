# Contributor: Simon Lackerbauer <calypso@strpg.org> 
pkgname=mecab-ipadic
pkgver=2.7.0
_pkgdate=20070801
pkgrel=4
pkgdesc="Morphological Analysis Tool, ipadic"
arch=('i686' 'x86_64')
url="http://mecab.sourceforge.net/"
license=('custom')
source=(http://surfnet.dl.sourceforge.net/sourceforge/mecab/$pkgname-$pkgver-$_pkgdate.tar.gz)
md5sums=('e09556657cc70e45564c6514a6b08495')
sha1sums=('0d9d021853ba4bb4adfa782ea450e55bfe1a229b')
depends=('mecab')

build() {
  cd $startdir/src/$pkgname-$pkgver-$_pkgdate
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m644 $srcdir/$pkgname-$pkgver-$_pkgdate/COPYING \
    $pkgdir/usr/share/licenses/$pkgname/COPYING
}
