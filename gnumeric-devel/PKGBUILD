# Contributor: twa022 <twa022@gmail.com>

pkgname=gnumeric-devel
_pkgname=gnumeric
pkgver=1.9.17
pkgrel=1
pkgdesc="A GNOME Spreadsheet Program (Development Version)"
arch=('i686' 'x86_64')
url="http://www.gnome.org/projects/gnumeric/"
license=('GPL')
depends=('goffice-devel>=0.7.17' 'gconf>=2.18.0.1-4' 'desktop-file-utils' 'libgsf>=1.14.15')
makedepends=('perlxml' 'pygtk' 'pkgconfig' 'intltool' 'gnome-doc-utils>=0.14.1')
optdepends=('python: for python plugin support' 'psiconv: for Psion 5 file support' 'yelp: for viewing the help manual')
provides=("gnumeric=$pkgver")
conflicts=('gnumeric')
install=gnumeric.install
options=('libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgname}/${pkgver%.*}/${_pkgname}-${pkgver}.tar.bz2)

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static \
              --without-guile --with-bonobo --enable-ssindex || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=${pkgdir} install || return 1

  install -d ${pkgdir}/usr/share/gconf/schemas
  gconf-merge-schema ${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}

md5sums=('675f3a59c278e2d329c33d985da53cde')
