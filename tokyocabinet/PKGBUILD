pkgname=tokyocabinet
pkgver=1.4.46
pkgrel=1
pkgdesc="a modern implementation of DBM"
arch=('i686' 'x86_64')
url="http://1978th.net/tokyocabinet"
license=('LGPL')
makedepends=('gcc>=3.1' 'make' 'pkgconfig')
depends=('zlib' 'bzip2')
source=("http://1978th.net/tokyocabinet/${pkgname}-${pkgver}.tar.gz")
md5sums=('341dadd1f3d68760e350f7e731111786')

build() {
  cd "$startdir/src/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --enable-off64 
  make || return 1
  make DESTDIR="$startdir/pkg" install || return 1
}
