# Maintainer: Ner0

pkgname=mint-z-improved-theme
pkgver=1.2.0
pkgrel=1
pkgdesc="An updated and slightly improved version of the default Linux Mint 12 theme"
arch=('any')
url="http://gnome-look.org/content/show.php?content=147059"
license=('GPL')
depends=('gtk-engine-murrine' 'gtk-engine-unico')
options=('!strip')
source=("http://gnome-look.org/CONTENT/content-files/147059-Mint-Z%20Improved%20(2012-06-06).tar.gz")
md5sums=('3f4c8bb253e701c33d6ec19675e6ef7f')

package() {
  find Mint-Z\ Improved -type f -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}
