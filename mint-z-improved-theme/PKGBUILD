# Maintainer: Ner0

pkgname=mint-z-improved-theme
pkgver=1.1.2
pkgrel=1
pkgdesc="An updated and slightly improved version of the default Linux Mint 12 theme"
arch=('any')
url="http://gnome-look.org/content/show.php?content=147059"
license=('GPL')
depends=('gtk-engine-murrine' 'gtk-engine-unico')
options=('!strip')
source=("http://gnome-look.org/CONTENT/content-files/147059-Mint-Z%20Improved%20(2012-05-15).tar.gz")
md5sums=('117f7c100e8f68dd712afc8c3becbeb2')

package() {
  for i in Mint-Z*; do
    find "$i" -type f -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  done
}
