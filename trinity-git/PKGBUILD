# Maintainer: Boohbah <boohbah at gmail.com>

pkgname=trinity-git
_gitname=trinity
pkgver=1.1.299.g37d928b
pkgrel=1
pkgdesc="A Linux System call fuzz tester (git version)"
arch=('i686' 'x86_64')
url="http://codemonkey.org.uk/projects/trinity/"
license=('GPL')
makedepends=('git')
provides=('trinity')
conflicts=('trinity')
source=('git://git.codemonkey.org.uk/trinity')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's/-/./g'
}

build() {
  cd $_gitname
  ./configure.sh
  make
}

package() {
  cd $_gitname
  make DESTDIR="$pkgdir/usr" install
}

# vim:set ts=2 sw=2 et:
