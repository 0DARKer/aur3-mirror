# Contributor: Gu, Cong <gucong43216@gmail.com>

pkgname=stardict-wordnet
pkgver=2.4.2
pkgrel=2
pkgdesc="WordNet dictionary for StarDict"
arch=('i686' 'x86_64')
depends=('stardict')
url="http://stardict.sourceforge.net"
license=('GPL')
md5sums=('f164dcb24b1084e1cfa2b1cb63d590e6')
source=(http://reciteword.cosoft.org.cn/stardict-iso/stardict-dic/dict.org/stardict-dictd_www.dict.org_wn-$pkgver.tar.bz2)

build() {
	cd $startdir/src/stardict-dictd_www.dict.org_wn-$pkgver/
	mkdir -p $startdir/pkg/usr/share/stardict/dic/wordnet
	install -m 644 dictd_www.dict.org_wn.dict.dz \
                   dictd_www.dict.org_wn.ifo \
                   dictd_www.dict.org_wn.idx \
	               $startdir/pkg/usr/share/stardict/dic/wordnet
}
