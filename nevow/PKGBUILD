# Contributor: Nicolas Pouillard <nicolas.pouillard@gmail.com>
pkgname=nevow
pkgver=0.10.0
pkgrel=5
pkgdesc="web application construction kit written in Python"
arch=('i686' 'x86_64')
url='http://www.divmod.org/trac/wiki/DivmodNevow'
license=('custom')
groups=()
depends=('python2' 'twisted')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=( http://pypi.python.org/packages/source/N/Nevow/Nevow-$pkgver.tar.gz )
noextract=()
md5sums=('66dda2ad88f42dea05911add15f4d1b2')

build()
{
  cd "$srcdir/Nevow-$pkgver" || return 1
  python2 setup.py build || return 1
  python2 setup.py install --root="$pkgdir" || return 1
  install -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE" || return 1
}
