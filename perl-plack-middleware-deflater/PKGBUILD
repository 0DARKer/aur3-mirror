pkgname=perl-plack-middleware-deflater
pkgver=0.05
pkgrel=1
pkgdesc="Perl module providing compression support to Plack"
arch=("any")
url="http://search.cpan.org/dist/Plack-Middleware-Deflater"
license=("PerlArtistic" "GPL")
depends=("perl>=5.9.4" "perl-plack")
source=(http://search.cpan.org/CPAN/authors/id/K/KA/KAZEBURO/Plack-Middleware-Deflater-0.05.tar.gz)
options=(!emptydirs)
md5sums=("0fbd98057a20f8210ef9372a71d9fbce")

build() {
  cd "$srcdir/Plack-Middleware-Deflater-0.05"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/Plack-Middleware-Deflater-0.05"
  make test
}

package() {
  cd "$srcdir/Plack-Middleware-Deflater-0.05"
  make install DESTDIR="$pkgdir"
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
