# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=eggdrop
pkgver=1.6.20
pkgrel=1
pkgdesc="An IPv6 capable IRC bot"
arch=('i686' 'x86_64')
url="http://www.eggheads.org"
license=('GPL')
depends=('tcl' 'zlib')
source=(ftp://ftp.eggheads.org/pub/eggdrop/source/1.6/$pkgname$pkgver.tar.gz)
md5sums=('3c6148bed2fcbe0644f2d456097fd270')

build() {
	cd ${srcdir}/${pkgname}${pkgver}
	mkdir -p ${pkgdir}/usr/{bin,share/eggdrop}
	./configure --prefix=/usr/share/eggdrop
	sed -i '/TLN_ECHO_C/ a\\#define\ HAVE_TCL_THREADS\ 1' ./src/eggdrop.h
	make config || return 1
	make || return 1
	make DEST=${pkgdir}/usr/share/eggdrop install
	ln -s /usr/share/${pkgname}/${pkgname} ${pkgdir}/usr/bin/${pkgname}
}

