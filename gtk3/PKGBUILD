pkgname=gtk3
pkgver=3.0.6
pkgrel=1
pkgdesc="The GTK Toolkit, version 3"
arch=('i686' 'x86_64')
url="http://www.gtk.org"
license=('LGPL')
depends=('pango' 'gdk-pixbuf2' 'atk' 'cairo' 'glib2-git')
makedepends=()
provides=('gtk3')
source=(http://ftp.gnome.org/pub/GNOME/sources/gtk+/3.0/gtk+-${pkgver}.tar.gz)
md5sums=('e7e7d06ec95e118497ef12dd82e54933')

build() {

  cd ${srcdir}/gtk+-${pkgver}

  ./configure

  make || return 1

  make DESTDIR="${pkgdir}" install || return 1
}
