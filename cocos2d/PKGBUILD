pkgname=cocos2d
pkgver=0.4.0
pkgrel=1
pkgdesc="cocos2d is a framework for building graphical/interactive applications."
arch=('any')
url="http://cocos2d.org/"
license=('BSD')
depends=('python' 'pyglet')
makedepends=('setuptools' 'unzip')
source=("http://los-cocos.googlecode.com/files/$pkgname-$pkgver.zip")
options=(!emptydirs)
md5sums=('5e57ef534b093342dc7bc35cb634b785')

build() {
    cd $srcdir/$pkgname-$pkgver
    python setup.py install --root=$pkgdir/ --optimize=1 || return 1
}
