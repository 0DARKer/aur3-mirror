# Maintainer: Francois Rigaut <frigaut at gmail dot com>

pkgname=yorick-imutil
_pkgshonam=imutil
pkgver=0.5.6
pkgrel=1
pkgdesc="Image manipulation routines for yorick"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.maumae.net/yorick/doc/plugins.php"
groups=('science' 'yorick-all')
depends=('yorick' 'yorick-yutils')
makedepends=('yorick')
source=(http://www.maumae.net/yorick/packages/src/${_pkgshonam}-${pkgver}-src.tgz)
md5sums=('60498ef04e81fc71c12738d1526af9f3')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  yorick -batch make.i || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
