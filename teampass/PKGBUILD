pkgname=teampass
pkgver=2.1.1
pkgrel=1
epoch=
pkgdesc="A Collaborative Passwords Manager"
arch=('any')
url="https://code.google.com/p/cpassman/"
license=('CCPL')
depends=('mysql php php-mcrypt')
optdepends=()
source=("https://cpassman.googlecode.com/files/TeamPass.zip"
        "https://cpassman.googlecode.com/files/2.1.1.zip"
       )
md5sums=('04dac0933af73a2f3eeff63f295efb4e'
         '1a9035022cf3f488d7b8ac67d12c2d2a')

package() {
  cd "$srcdir"
  install -d "$pkgdir/srv/http/teampass"
  cp -r TeamPass/* "$pkgdir/srv/http/teampass"
  cp -r 2.1.1/* "$pkgdir/srv/http/teampass"
}

