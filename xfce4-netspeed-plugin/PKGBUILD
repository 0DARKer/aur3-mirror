pkgname=xfce4-netspeed-plugin
pkgdesc=('Netspeed plugin for xfce4 panel. Like netspeed applet')
pkgver=0.1
pkgrel=1
arch=('i686')
url="http://code.google.com/p/xfce4-netspeed-plugin/"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source="http://xfce4-netspeed-plugin.googlecode.com/files/xfce4-netspeed-plugin-0.1.tar.gz"
noextract=()
md5sums=(f2ef8f6ec0b5776134a0edfa47fdc7d5) 

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
