# Maintainer: Vinycius Maia <suportevg@uol.com.br>
pkgname=xfce4-netspeed-plugin
pkgdesc=('Netspeed plugin for xfce4 panel. Like gnome netspeed applet')
pkgver=0.1
pkgrel=3
arch=('i686' 'x86_64')
url="http://code.google.com/p/xfce4-netspeed-plugin/"
license=('GPL')
depends=('xfce4-panel' 'libxfce4util' 'libxfcegui4' 'libgtop')
makedepends=('make' 'gcc' 'binutils' 'libtool' 'pkg-config' 'intltool')
provides=('xfce4-netspeed-plugin')
source="http://xfce4-netspeed-plugin.googlecode.com/files/xfce4-netspeed-plugin-0.1.tar.gz"
md5sums=(f2ef8f6ec0b5776134a0edfa47fdc7d5)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
