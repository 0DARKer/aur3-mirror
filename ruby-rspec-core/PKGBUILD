# Maintainer: Adam Russell <adamlr6+arch@gmail.com>
pkgname=ruby-rspec-core
pkgver=2.6.4
pkgrel=1
pkgdesc="RSpec runner and example groups"
arch=('any')
url="http://rubygems.org/gems/rspec-core"
license=('MIT')
depends=('ruby')
source=(http://gems.rubyforge.org/gems/rspec-core-$pkgver.gem)
noextract=(rspec-core-$pkgver.gem)
md5sums=('89f85770f34f6b764383ad987d230905')

build() {
	cd "${srcdir}"
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin/" rspec-core-$pkgver.gem
}
