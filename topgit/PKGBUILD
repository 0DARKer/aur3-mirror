pkgname=topgit
pkgver=0.8
pkgrel=3
pkgdesc="A different patch queue manager"
url="http://repo.or.cz/w/topgit.git"
license=("GPL")
arch=('i686' 'x86_64')
depends=('git')
source=('topgit-0.8.zip::http://repo.or.cz/w/topgit.git/snapshot/f59e4f9e87e5f485fdaee0af002edd2105fa298a.zip')
md5sums=('f94467a77951432cb0787ec10a4f44ad')

build() {
  cd "$srcdir/$pkgname"
  make prefix=/usr DESTDIR="$pkgdir" install || return 1
}

