pkgname=scapy
pkgver=2.1.1
pkgrel=3
pkgdesc="A powerful interactive packet manipulation program written in Python"
url="http://www.secdev.org/projects/scapy/"
depends=('tcpdump' 'libpcap' 'pycrypto' 'gnuplot' 'python2' 'graphviz')
makedepends=('')
provides=('scapy')
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('7b4452786788cb75ade841c30276a2d3')

source=(https://www.secdev.org/projects/scapy/files/$pkgname-$pkgver.tar.gz)

build(){
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --prefix=$pkgdir/usr
}
