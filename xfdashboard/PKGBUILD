# Maintainer: Rob McCathie <archaur at rmcc dot com dot au>

pkgname=xfdashboard
pkgver=0.1.2
pkgrel=1
pkgdesc="A Gnome shell like dashboard for Xfce"
arch=('i686' 'x86_64')
url="http://gmc-holle.github.io/xfdashboard/"
license=('GPL')
depends=('clutter>=1.12' 'dbus-glib>=0.98' 'garcon>=0.2.0' 'glib2>=2.30.3' 'libwnck>=2.30' 'xfconf>=4.10.0')
makedepends=('xfce4-dev-tools')
source=("https://github.com/gmc-holle/$pkgname/archive/$pkgver.tar.gz")
sha1sums=('3b264c15460b02b6912836f2b13026e04b13714d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./autogen.sh --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
