# Maintainer: Rob McCathie <archaur at rmcc dot com dot au>

pkgname=xfdashboard
pkgver=0.1.0
pkgrel=2
pkgdesc="A Gnome shell like dashboard for Xfce"
arch=('i686' 'x86_64')
url="http://gmc-holle.github.io/xfdashboard/"
license=('custom')
depends=('libwnck>=2.30' 'clutter>=1.12' 'glib2>=2.30.3' 'xfconf>=4.10.0' 'dbus-glib>=0.98' 'xfce4-dev-tools')
source=("https://github.com/gmc-holle/$pkgname/archive/$pkgver.tar.gz")
sha1sums=('92602845468ad752c80fcd20af283a829de5d328')

prepare() {
  cd "$srcdir/$pkgname-$pkgver"
  #patch -Np1 -i "$srcdir"/file.patch
}

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./autogen.sh --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
