pkgname=mmsap
pkgver=3.2.5
pkgrel=1
pkgdesc="mmSAP - comfortable SAP player based on ASAP library"
url="http://mmsap.sourceforge.net"
depends=("asap")
makedepends=("cmake gtkmm3 dbus dbus-glib libglade")
arch=('i686 x86_64')
license=('GPL')
source=("http://downloads.sourceforge.net/mmsap/${pkgname}_${pkgver}.tar.bz2")
conflicts=('mmsap2')
md5sums=('ad585f4d16ba268a0d0c52f36d128983')

build(){
	cd $startdir/src/${pkgname}_${pkgver}/
	cmake .
	make
	mkdir -p $startdir/pkg/usr/{bin,local/share/mmsap}
	cd src
	install mmsap $startdir/pkg/usr/bin
	install gladegui/mmsap.ui $startdir/pkg/usr/local/share/mmsap/mmsap.ui
	install gladegui/mmsap_alt.ui $startdir/pkg/usr/local/share/mmsap/mmsap_alt.ui
}
