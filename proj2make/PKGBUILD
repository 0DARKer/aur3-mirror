# Maintainer: yetist <yetist@gmail.com>
pkgname=proj2make
pkgver=4.3
pkgrel=1
pkgdesc="convert ios xcode.proj to makefile"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ios-toolchain-based-on-clang-for-linux"
license=('GPL')
source=("http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/$pkgname-$pkgver.tar.gz"
"add-version.patch")
sha256sums=('b959aa4d0c8bd8deb4c5d748dfe6a50c898819ed18707f54b65f23813050f47d'
            'd424ebaa00948145fafc82c3b851efc829c95577e7e09723408dbf020efadca3')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  unset CFLAGS CXXFLAGS LDFLAGS
  patch -p1 -i $srcdir/add-version.patch

  find -name "*.o" -exec rm -f {} \;
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 proj2make $pkgdir/usr/bin/proj2make
}

