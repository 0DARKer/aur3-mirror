# Maintainer: stef312 <stef312_at_gmail_dot_com>

pkgname=wync
pkgver=2.0.23
pkgrel=1
pkgdesc="Microsoft Lync client for Linux"
arch=('x86_64' 'i686')
license=('custom:"Copyright (c) 2011 Fisil LLC"')
url="http://fisil.com/products.html"
options=('!strip' 'staticlibs')

if [ "${CARCH}" = "x86_64" ]; then
	md5sums=('9415fbe2ae137c28c3a6f517ee14ceb4')
	_deb="Wync_Ubuntu64.deb"
elif [ "${CARCH}" = "i686" ]; then
	md5sums=('6afb42dfa0aa8e70f779d8e3ab4d5853')
	_deb="Wync_Ubuntu32.deb"
fi

source=("http://fisil.com/linux/${_deb}")

package() {
	cd "${srcdir}"
	ar x "${_deb}" > /dev/null
	tar -xzf data.tar.gz -C "${pkgdir}"
	# Clean
	find "${pkgdir}" -type f -name '*~' -delete
	rm -rf "${pkgdir}"/etc
	rm -rf "${pkgdir}"/usr/bin
	# Rights
	chmod -R 755 "${pkgdir}"/opt
	chmod -R 755 "${pkgdir}"/usr
}
