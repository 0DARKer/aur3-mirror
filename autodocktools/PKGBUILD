# Maintainer: Michael Schubert <mschu.dev at gmail>

pkgname=autodocktools
pkgver=1.5.4
pkgrel=1
pkgdesc="AutoDockTools is a GUI that is used to run and analyze AutoDock dockings and isocontour AutoGrid affinity maps"
arch=('any')
url="http://mgltools.scripps.edu/"
license=('MIT')
depends=('python2')
source=('http://mgltools.scripps.edu/downloads/tars/releases/REL1.5.4/mgltools_source_1.5.4.tar.gz')
md5sums=('2c25ebf392a9b1457dc098a7fb6323f2')

build() {
  cd $srcdir
  tar -xzf ${srcdir}/mgltools_source_1.5.4/MGLPACKS/AutoDockTools-${pkgver}.tar.gz
  cd AutoDockTools-$pkgver
  python2 setup.py install --prefix=/usr --root=$pkgdir
}
