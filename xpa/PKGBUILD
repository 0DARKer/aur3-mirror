# Maintainer:  <clu>

pkgname=xpa  
pkgver=2.1.12
pkgrel=1 
pkgdesc="The XPA messaging system provides seamless communication between many kinds of Unix programs, including X programs and Tcl/Tk programs."
url="http://hea-www.harvard.edu/RD/xpa/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=(ftp://sao-ftp.harvard.edu/pub/rd/$pkgname/$pkgname-${pkgver}.tar.gz)
md5sums=('93946daf7789431aa1308374a6df5c7d')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr --enable-shared=yes
  # make install fails to make directories if the root doesn't exist, so we make them...
  mkdir -p $pkgdir/usr/lib
  mkdir -p $pkgdir/usr/include
  mkdir -p $pkgdir/usr/bin
  make || return 1
  make INSTALL_ROOT=$pkgdir install
}
