# Maintainer: Alex Jones <alex.theboy.jones@gmail.com>
pkgname=nxt
pkgver=1.5.9
pkgrel=1
pkgdesc="The Nxt Reference Software Client for use with the Nxt Cryptocurrency."
arch=()
url="http://nxt.org"
license=('MIT/GPL')
arch=(any)
makedepends=(unzip)
depends=('jre8-openjdk')
optdepends=('flashplugin: for add to clipboard support')
source=(https://bitbucket.org/JeanLucPicard/nxt/downloads/nxt-client-$pkgver.zip)
sha256sums=('144c9ecfc5d2b3540dec4eb0a5d94ac67a9142645be858236315cfee0777a03e')

package() {
	mkdir -p $pkgdir/usr/lib/$pkgname
	mkdir -p $pkgdir/usr/bin
	cp -rf $pkgname $pkgdir/usr/lib
	echo "java -cp /usr/lib/$pkgname/classes:/usr/lib/$pkgname/lib/*:/usr/lib/$pkgname/conf:/usr/lib/$pkgname/nxt.jar nxt.Nxt" > $pkgdir/usr/bin/nxt
	chmod 755 $pkgdir/usr/bin/nxt
	chmod -R 755 $pkgdir/usr/lib/nxt
}