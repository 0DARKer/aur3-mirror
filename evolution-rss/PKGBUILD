# Contributor: Jelle van der Waa <jelle at vdwaa dot nl>
# Contributor: Borromini <gotleenucks at g-male dot com>

pkgname=evolution-rss
_pkgname=EVOLUTION-RSS
pkgver=0.3.91
_pkgver=0_3_91
pkgrel=1
pkgdesc="Plugin for Evolution Mail that enables reading of RSS/RDF/ATOM feeds"
arch=('i686' 'x86_64')
url="http://gnome.eu.org/index.php/Evolution_RSS_Reader_Plugin"
license=('GPL')
depends=('evolution')
makedepends=('gnome-common' 'intltool')
install=evolution-rss.install
options=('!libtool' '!emptydirs')
# source=(http://git.gnome.org/browse/evolution-rss/snapshot/${_pkgname}_${_pkgver}.tar.gz)
source=(http://pkgbuild.com/~bgyorgy/sources/${_pkgname}_${_pkgver}.tar.gz)
md5sums=('96b3af65421a58c8ebd13e38913a446e')

build() {
  cd $srcdir/${_pkgname}_${_pkgver}

  ./autogen.sh --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
               --disable-static --disable-schemas-install \
               --with-gconf-schema-file-dir=/usr/share/gconf/schemas
  make
}

package() {
  cd $srcdir/${_pkgname}_${_pkgver}

  make DESTDIR="$pkgdir/" install
}
