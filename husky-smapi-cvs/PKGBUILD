pkgname=husky-smapi-cvs
pkgver=20091210
pkgrel=1
pkgdesc="Husky SMAPI library"
arch=('i686' 'x86_64')
url="http://husky.sf.net"
license=('GPL2')

depends=('husky-huskylib-cvs')
provides=('husky-smapi')

_cvsroot=":pserver:anonymous@husky.cvs.sourceforge.net:/cvsroot/husky"
_cvsmod="smapi"

options=('!libtool')
build() {
	msg "Performing source checkout..."
	if [ -d "$_cvsmod/CVS" ]; then
		cd "$_cvsmod"
		cvs -z3 update -d || return 1
		cd ..
	else
		cvs -z3 -d $_cvsroot co -D $pkgver -f "$_cvsmod" || return 1
	fi
	msg "Source checkout finished."
	rm -rf "$_cvsmod-build"
	cp -r "$_cvsmod" "$_cvsmod-build" || return 1
	cd "$_cvsmod-build"
	cp huskymak.cfg ${srcdir}
	make || return 1
	make DESTDIR=${pkgdir} install
	install -Dm644 cvsdate.h ${pkgdir}/usr/include/smapi
}
