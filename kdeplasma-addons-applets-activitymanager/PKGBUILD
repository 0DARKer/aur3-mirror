# Maintainer: Tom Debruyne <tomdebruyne at gmail dot com>

pkgname=kdeplasma-addons-applets-activitymanager
pkgver=0.5
pkgrel=1
pkgdesc="Lightweight plasmoid to manage your activities effectively. Can start, stop, switch between, clone, edit and remove activities."
url="http://kde-look.org/content/show.php/Activity+Manager+Plasmoid?content=136278"
license=('GPL')
arch=('i686' 'x86_64')
depends=('kdebindings-python' 'kdebase-workspace' 'python2-qt')
makedepends=()
source=("http://kde-look.org/CONTENT/content-files/136278-activitymanager-${pkgver}.tar.bz2")
md5sums=('7592bf60fafcb465fe75cd987a037ffc')

build() {
  cd $srcdir

  cd activitymanager-${pkgver}
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
  make DESTDIR=$pkgdir install
}
