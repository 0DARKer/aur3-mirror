# Contributor: Michal Malek <michalm@jabster.pl>

pkgname=('kdeplasma-addons-applets-activitymanager')
pkgdesc='Lightweight plasmoid to manage your activities effectively'
pkgver=0.5
pkgrel=1
arch=('i686' 'x86_64')
url='http://kde-look.org/content/show.php/Activity+Manager+Plasmoid?content=136278'
license=('GPL')
makedepends=('cmake' 'automoc4' 'kdebase-workspace')
depends=('kdebase-workspace>=4.6.0')
source=("http://kde-look.org/CONTENT/content-files/136278-activitymanager-${pkgver}.tar.bz2")
install='kdeplasma-addons-applets.install'
sha1sums=('bbe1902239e704694f87195b9646d21438aa800a')

build() {
    cd ${srcdir}
	mkdir -p build
	cd build
	cmake ../activitymanager-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd ${srcdir}/build
	make DESTDIR=${pkgdir} install
}

