# Maintainer: spider-mario <spidermario@free.fr>
# Contributor: Marcin Karpezo <sirmacik at gmail dot com>
# Contributor: Daenyth <Daenyth+Arch [at] gmail [dot] com>
pkgname=rakudo
pkgver=2012.02
pkgrel=2
pkgdesc="Perl6 compiler for the Parrot virtual machine"
arch=('i686' 'x86_64')
url='http://rakudo.org/'
license=(PerlArtistic)
depends=('parrot' 'nqp=2012.02')
makedepends=('perl>=5.8')
options=('!makeflags')
source=(https://github.com/downloads/rakudo/star/rakudo-star-$pkgver.tar.gz)
md5sums=('1f06a972b76e7ccdcb027d915e734f61')

build() {
    cd "$srcdir/$pkgname-star-$pkgver"
    perl Configure.pl --prefix=/usr \
                      --with-nqp=/usr/bin/nqp
    make
}
package() {
    cd "$srcdir/$pkgname-star-$pkgver"
    make DESTDIR="$pkgdir" install
}

