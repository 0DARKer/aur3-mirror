# Maintainer: Daenyth <Daenyth+Arch [at] gmail [dot] com>
pkgname=rakudo
pkgver=2010.07
pkgrel=1
pkgdesc="A Perl 6 implementation built on the Parrot virtual machine"
arch=('i686' 'x86_64')
url='http://rakudo.org/'
license=(PerlArtistic)
depends=('parrot>=1.9.0')
makedepends=('perl>=5.8')
source=(http://cloud.github.com/downloads/$pkgname/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('6cc519feeb20bddbbee8cbfe6e8c2a31')

build() {
	cd "$srcdir/$pkgname-$pkgver"

	perl Configure.pl || return 1
	make              || return 1

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
