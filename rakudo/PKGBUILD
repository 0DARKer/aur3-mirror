# Maintainer: Marcin Karpezo <sirmacik at gmail dot com>
# Contributor: Daenyth <Daenyth+Arch [at] gmail [dot] com>
pkgname=rakudo
pkgver=2011.01
pkgrel=1
pkgdesc="Useful and usable distribution of Perl 6 built on the Parrot virtual machine"
arch=('i686' 'x86_64')
url='http://rakudo.org/'
license=(PerlArtistic)
depends=('parrot')
makedepends=('perl>=5.8')
source=(https://github.com/downloads/rakudo/star/$pkgname-star-$pkgver.tar.gz)
md5sums=('3ba1e37842e17b8fb5e0b21f614a6286')

build() {
    cd "$srcdir/$pkgname-star-$pkgver"
    perl Configure.pl --parrot-config=/usr/bin/parrot_config
    make -j1
}
package() {
    cd "$srcdir/$pkgname-star-$pkgver"
    make -j1 DESTDIR="$pkgdir/" install
}

