# Maintainer: Marcin Karpezo <sirmacik at gmail dot com>
# Contributor: Daenyth <Daenyth+Arch [at] gmail [dot] com>
pkgname=rakudo
pkgver=2011.09
pkgrel=2
pkgdesc="Useful and usable distribution of Perl 6 built on the Parrot virtual machine"
arch=('i686' 'x86_64')
url='http://rakudo.org/'
license=(PerlArtistic)
depends=('')
makedepends=('perl>=5.8', 'git')
source=(https://github.com/downloads/rakudo/rakudo/$pkgname-$pkgver.tar.gz)
md5sums=('b2d787e25302b934613b71feb85be03d')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    perl Configure.pl --gen-nqp --gen-parrot --prefix=/usr
    make -j1
}
package() {
    cd "$srcdir/$pkgname-$pkgver"
    make -j1 DESTDIR="$pkgdir" install
}

