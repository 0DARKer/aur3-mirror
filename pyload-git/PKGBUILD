# Maintainer: M0Rf30

pkgname='pyload-git'
pkgver=2815.d445131
pkgrel=1
pkgdesc="Downloadtool for One-Click-Hoster written in python. Latest git stable branch."
url="https://github.com/pyload/pyload"
license='GPL'
arch=('any')
provides=('pyload')
conflicts=('pyload' 'pyload-hg')
depends=('python2' 'python2-crypto' 'python2-pycurl' 'tesseract' 'python2-imaging' 'python2-jinja' 'python2-beaker')
optdepends=('python2-qt: Gui'
            'python2-flup: for additional webservers'
	    'python2-notify: Notifications for GUI'
	    'js: ClickNLoad')
makedepends=('git' 'python2-distribute')

source=('pyload::git+git://github.com/pyload/pyload.git#branch=stable')

build() {
  cd pyload
  paver2 generate_setup
}

package() {
  cd pyload
  mkdir -p build/lib
  rm -r pyload
  python2 setup.py install --root=${pkgdir}
}

pkgver() {
  cd pyload
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

md5sums=('SKIP')
md5sums=('SKIP')
