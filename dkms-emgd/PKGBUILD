# Mantainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=dkms-emgd
_modname=emgd
_modpackage=emgd-dkms
pkgver=1.6.0.1922
_pkgver=1.5.15.3082
ubustring=0ubuntu1~ppa13
pkgrel=1
pkgdesc="Intel EMGD driver in DKMS format."
arch=('any')
url="http://edc.intel.com/Software/Downloads/EMGD/"
license=('GPL')
depends=('xorg-server=1.9.4.901' 'dkms')
optdepends=('xf86-video-emgd')
provides=('emgd')
install=('dkms-emgd.install')

source=(https://launchpad.net/~gma500/+archive/emgd-fix/+files/${_modpackage}_${pkgver}-${ubustring}.tar.gz
        ${pkgname}.install
        dkms.conf)
md5sums=('736e2c1fb5c6c735d635db03c6cbbb8e'
         '1d1881be81658be3faea95bb6610e1f4'
         '03800de485ef2eb832ca178e85f0389a')

build() {
    cd ${srcdir}
}

package() {
    mkdir -p ${pkgdir}/usr/src/${_modname}-${_pkgver}
    cp -a ${srcdir}/emgd-dkms-kernel39/* ${pkgdir}/usr/src/${_modname}-${_pkgver}
    cp -a ${srcdir}/dkms.conf ${pkgdir}/usr/src/${_modname}-${_pkgver}
    install -Dm755 ${srcdir}/emgd-dkms-kernel39/COPYING ${pkgdir}/usr/share/licenses/$pkgname/COPYING
}