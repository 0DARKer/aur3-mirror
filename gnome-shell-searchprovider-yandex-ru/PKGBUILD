# Maintainer: Mikahil Mikhaylenko <sniff303@gmail.com>
pkgname=gnome-shell-searchprovider-yandex-ru
pkgver=3.2
pkgrel=1
pkgdesc="Adds Yandex serach engine (Russian version) to gnome."
url="http://snoo.ru/"
arch=('any')
license=('GPL')
depends=('gnome-shell')
makedepends=('wget')

build() {
  wget "http://yandex.ru/opensearch.xml" -O yandex-ru.xml
  mkdir -p $pkgdir/usr/share/gnome-shell/search_providers
  cp yandex-ru.xml $pkgdir/usr/share/gnome-shell/search_providers
}

# vim:set ts=2 sw=2 et:
