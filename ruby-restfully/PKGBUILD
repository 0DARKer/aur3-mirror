# Contributor: Hyacinthe Cartiaux <hyacinthe.cartiaux(at)free.fr>
# Based on ruby-rest-client PKGBUILD by Emiliano Vavassori <syntaxerrormmm(at)free.fr>

pkgname=ruby-restfully
_gemname=restfully
pkgver=0.6.3
pkgrel=1
pkgdesc="Experimental code for auto-generation of wrappers on top of RESTful APIs that follow HATEOAS principles and provide OPTIONS methods and/or Allow headers."
arch=(any)
url="http://rubygems.org/gems/restfully"
license=('MIT')
depends=('ruby' 'ruby-rest-client>=1.4' 'ruby-backports' 'ruby-json>=1.2.0')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem
        LICENSE)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('495ff925aab47aab7c359e0a7288c710'
         'e8a19398564569e3a154fbb6b0235965')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_gemname}-${pkgver}.gem
}

package() {
  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m 644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
