# Contributor: matthiaskrgr <matthiaskrgr _strange_curverd_character_ freedroid D0T org>

pkgname=gource-git
pkgver=20120412
pkgrel=1
pkgdesc="software version control visualization"
license=('GPL3')
arch=('i686' 'x86_64')
url="http://code.google.com/p/gource/"
makedepends=('git' 'autoconf' 'boost' 'glmath')
depends=('sdl_image' 'pcre' 'glew' 'boost-libs' 'freetype2' 'tinyxml')
optdepends=('ffmpeg: to convert the ppm stream (gource -o) to a video')
conflicts=('gource')
provides=('gource')
changelog=changelog
source=('changelog')
sha1sums=('3a8382fcb93861b15a688e374767e90d75e5f4ed')

_gitroot="git://github.com/acaudwell/Gource.git"
_gitname="gource"

build() {
	cd "$srcdir"
	msg "Connecting to the GIT server...."

	if [[ -d $srcdir/$_gitname ]] ; then
		msg "Removing build files"
		cd $_gitname
		git clean -dfx
		msg "Updating..."
		git submodule init
		git submodule update
		git pull origin
		msg "The local files are updated."
	else
		msg "Cloning..."
		git clone  $_gitroot $_gitname --recursive --depth 1
		msg "Clone done."
	fi

	msg "Starting make..."
	cd "$srcdir"/"$_gitname"

	msg "Running autoreconf..."
	autoreconf -f -i
	msg "Running configure..."
	./configure --prefix=/usr --with-tinyxml
	msg "Running make..."
	make
}

package() {
	cd "$srcdir"/"$_gitname"
	make DESTDIR=$pkgdir install
	msg "Compiling done."
}
