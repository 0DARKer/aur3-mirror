# Contributor: matthiaskrgr <matthiaskrgr _strange_curverd_character_ freedroid D0T org>

pkgname=gource-git
pkgver=20120216
pkgrel=1
pkgdesc="software version control visualization"
license=('GPL3')
arch=('i686' 'x86_64')
url="http://code.google.com/p/gource/"
makedepends=('git' 'autoconf' 'boost' 'glmath')
depends=('sdl_image' 'pcre' 'glew' 'boost-libs' 'freetype2')
optdepends=('ffmpeg: to convert the ppm stream (gource -o) to a video')
conflicts=('gource')
provides=('gource')
changelog=changelog
source=('changelog')
sha1sums=('e605c349e981e879eb175a85fbb2defd94f242f7')

_gitroot="git://github.com/acaudwell/Gource.git"
_gitname="gource"

build() {
	cd "$srcdir"
	msg "Connecting to the GIT server...."

	if [[ -d $srcdir/$_gitname ]] ; then
		msg "Removing build files"
		git clean -dfx
		cd $_gitname
		msg "Updating..."
		git pull origin
		msg "The local files are updated."
	else
		msg "Cloning..."
		git clone  $_gitroot $_gitname --recursive --depth 1
		msg "Clone done."
	fi

	msg "Starting make..."
	cd "$srcdir"/"$_gitname"

	msg "Running autoreconf..."
	autoreconf -f -i
	msg "Running configure..."
	./configure --prefix=/usr
	msg "Running make..."
	make
}

package() {
	cd "$srcdir"/"$_gitname"
	make DESTDIR=$pkgdir install
	msg "Compiling done."
}
