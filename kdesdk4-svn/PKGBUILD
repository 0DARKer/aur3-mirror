# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdesdk4-svn
pkgver=1219666
pkgrel=1
pkgdesc="KDE4 Software Development Kit"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdebase4-runtime-git' 'kdepimlibs4-git' 'kdepim4-runtime-git' 'kdebase4-git' 'python2' 'subversion' 'boost' 'antlr2')
makedepends=('pkgconfig' 'cmake' 'automoc4')

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdesdk
_svnmod=kdesdk

build() {
. /etc/profile.d/kde-git.sh
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir $_svnmod-build
  cd $_svnmod-build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=debugfull \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/opt/kde4

  make
}

package() {
  cd $srcdir/$_svnmod-build
  make DESTDIR=$startdir/pkg install
  sed -i 's|#!/opt/kde4/bin/env python|#!/opt/kde4/bin/env python2|' ${pkgdir}/opt/kde4/bin/hotshot2calltree
  find ${pkgdir} -name '*.py' | xargs sed -i 's|#!/opt/kde4/bin/env python|#!/opt/kde4/bin/env python2|'
  sed -i 's|#!/opt/kde4/bin/env python|#!/opt/kde4/bin/env python2|' ${pkgdir}/opt/kde4/bin/kde_generate_export_header
  rm -rf $startdir/src/$_svnmod-build
}
