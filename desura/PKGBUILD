# Maintainer: Wido <widowild [at] myopera [dot] com>

pkgname=desura
pkgver=1
pkgrel=4
pkgdesc="Desura is a community driven digital distribution service for gamers, putting the best games, mods and downloadable content from developers at gamers fingertips (BETA)"
url="http://www.desura.com/"
license=('custom: "commercial"')
arch=('i686' 'x86_64')
options=()
depends=('libjpeg6' 'libpng12' 'lsb-release')
[ "$CARCH" = "i686"   ] && ARCH=i686
[ "$CARCH" = "x86_64" ] && ARCH=x86_64
source=(http://www.desura.com/desura-${ARCH}.tar.gz ${pkgname}.sh ${pkgname}.desktop)
md5sums=('cb1ddc1cea5217bc3db1b1d2826fac46'
         'caa69957e655b6acaa4c43d6fc8478d6'
         '7b4c336e6dbd5ab4f13cfdac9ea562b4')

[ "$CARCH" = "x86_64" ] && md5sums=('0d4c66549ba483dd15799f9d9e48142f'
                                    'caa69957e655b6acaa4c43d6fc8478d6'
                                    '7b4c336e6dbd5ab4f13cfdac9ea562b4')

build() {
   cd ${srcdir}
   true
}

package(){
  cd ${srcdir}

  # Change Permission
   install -d -m775 -g users ${pkgdir}/opt/${pkgname}/
   install -d -m775 -g users ${pkgdir}/opt/${pkgname}/bin/
   install -d -m775 -g users ${pkgdir}/opt/${pkgname}/data/
   install -d -m775 -g users ${pkgdir}/opt/${pkgname}/docs/
   install -d -m775 -g users ${pkgdir}/opt/${pkgname}/lib/

  # Install Desura
   install -Dm 755 ${srcdir}/${pkgname} \
       ${pkgdir}/opt/${pkgname}/${pkgname}

  # Install Launcher
   install -Dm 755 ${srcdir}/${pkgname}.sh \
       ${pkgdir}/usr/bin/${pkgname}

  # Install Desktop
   install -Dm 644 ${srcdir}/${pkgname}.desktop \
        ${pkgdir}/usr/share/applications/${pkgname}.desktop
}
