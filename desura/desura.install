# arg 1:  the new package version
post_install() {
    true
}

post_upgrade() {
    cat << EOF
  => Delete old file:

  => /opt/desura/bin/desura
  => /opt/desura/bin/bittest
  => /opt/desura/bin/crashdlg
EOF
  rm /opt/desura/bin/{desura,bittest,crashdlg}
}
