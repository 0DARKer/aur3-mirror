# Contributor: Lawrence Lee <valheru AT facticius DOT net>
pkgname=kpar2
pkgver=0.3.1
pkgrel=1
pkgdesc="PAR2 verification and repair program for KDE3"
arch=('i686' 'x86_64')
url="http://code.google.com/p/kpar2/"
license=('GPL')
depends=('kdelibs' 'libpar2')
makedepends=('cmake>=2.4' 'subversion')
source=(http://kpar2.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('6a8875d6ba1b93474dd6b5e3e24423a1')

build() {

	mkdir $startdir/src/$pkgname-$pkgver-build
	cd $startdir/src/$pkgname-$pkgver-build

	cmake $startdir/src/$pkgname-$pkgver -DCMAKE_INSTALL_PREFIX=${KDEDIR}
	make DESTDIR="$startdir/pkg" install

	rm -rf $startdir/src/$pkgname-$pkgver-build
}

# vim:set ts=2 sw=2 et:
