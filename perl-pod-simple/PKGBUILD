# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-pod-simple'
pkgver='3.14'
pkgrel='1'
pkgdesc="the framework for parsing Pod"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')

url='http://search.cpan.org/dist/Pod-Simple'

source=('http://search.cpan.org/CPAN/authors/id/D/DW/DWHEELER/Pod-Simple-3.14.tar.gz')
md5sums=('10b084e7f24c4fd70bbc00e0198a20d6')

build() {
  DIST_DIR="${srcdir}/Pod-Simple-3.14"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

