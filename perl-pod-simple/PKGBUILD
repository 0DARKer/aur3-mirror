# Contributor: Caleb Cushing <xenoterracide@gmail.com>

_perlmod=Pod-Simple
_modnamespace=Pod
pkgname=perl-pod-simple
pkgver=3.25
pkgrel=1
pkgdesc="Pod::Simple - the framework for parsing Pod"
arch=('any')
url="http://search.cpan.org/dist/$_perlmod"
license=('GPL' 'PerlArtistic')
options=('!emptydirs')
depends=('perl>=5.10.0')
source=("http://cpan.perl.org/modules/by-module/$_modnamespace/$_perlmod-$pkgver.tar.gz")
sha512sums=('4d09f8f32637a0d39c0e751edf54f6c378af561fdee8087fb16e941e541929d915c78d77e8f04639fd4f265bfac1d75cddd4f17081100d00e53dc4f748d7a4b4')

build() {
	cd "$srcdir/$_perlmod-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

check() {
	cd "$srcdir/$_perlmod-$pkgver"
	make test
}

package() {
	cd "$srcdir/$_perlmod-$pkgver"
	make install DESTDIR="$pkgdir/"
}
