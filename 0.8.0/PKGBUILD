# Maintainer: Lucio zara <pennega@gmail.com>

pkgname=spice-protocol
pkgver=0.8.0
pkgrel=2
pkgdesc="Headers for SPICE protocol."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
source=(http://spice-space.org/download/releases/$pkgname-$pkgver.tar.gz)

md5sums=('ea0b53791e1f280bad8f993b0575cfd5')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  #PATCH
  sed -i '/#define _H_CONTROLLER_PROT/a#include <stdint.h>' spice/controller_prot.h

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
