pkgname=python2-antlr3
pkgver=3.1.3
pkgrel=1
pkgdesc="antlr tool python runtime"
url="http://www.antlr.org/wiki/display/ANTLR3/Python+runtime"
depends=('antlr3')
makedepends=('python2-distribute')
license=('BSD')
arch=('any')
source=("http://www.antlr.org/download/Python/antlr_python_runtime-$pkgver.tar.gz")

package() {
    cd $srcdir/antlr_python_runtime-$pkgver
    python2 setup.py install --root="$pkgdir" --optimize=1
}

md5sums=('ef7d734646a06c0585d87de2639ad418')
