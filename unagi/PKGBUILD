# Contributor: Andrei Thorp <garoth at the rather lovely gmail dot com>
pkgname="unagi"
pkgver=0.1
pkgrel=2
pkgdesc="Compositing manager for implementing effects with regular window managers."
arch=('i686' 'x86_64')
url="http://projects.mini-dweeb.org/projects/unagi"
license=('GPL')
depends=("libxcb>=1.4" "xcb-proto>=1.6" "xproto" "confuse" "libxdg-basedir>=1.0.0" "xcb-ewmh")
makedepends=("pkgconfig")
backup=()
install="unagi.install"
source=("http://projects.mini-dweeb.org/attachments/download/89/${pkgname}-${pkgver}.tar.gz")
md5sums=('79251ccefaa7346991939de79a8c3bbc')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" includedir="/usr/include/unagi" install

  # Remove libtool files.
  find $pkgdir -name "*.la" | xargs rm
}

# vim:set ts=2 sw=2 et:
