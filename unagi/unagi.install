# arg 1:  the new package version
post_install() {
  echo "Unagi won't find its configuration by default. Help it by using:
unagi -c /usr/etc/xdg/unagi.conf. Consider making a shell alias."
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install
}

