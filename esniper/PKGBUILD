# Maintainer: Peter Simons <simons@cryp.to>
# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>
pkgname=esniper
pkgver=2.25.0
pkgrel=1
pkgdesc="A simple, lightweight tool for sniping eBay auctions."
arch=('i686' 'x86_64')
url="http://esniper.sourceforge.net/"
license=('BSD')
depends=('curl' 'openssl')
source=(http://downloads.sourceforge.net/esniper/${pkgname}-2-25-0.tgz esniper.patch)
md5sums=('f5fe4f36e19885985cc84d874f401854'
         'd225b4ff70bcf7947a32830866379511')

build()
{
  cd "${srcdir}/${pkgname}-2-25-0"
  patch -p1 < ../esniper.patch
  ./configure --prefix=/usr
  make
}

package()
{
  cd "${srcdir}/${pkgname}-2-25-0"
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
  install -D -m755 frontends/snipe "${pkgdir}/usr/bin/snipe"
}
