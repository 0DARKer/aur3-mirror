# Maintainer: Andrea Brancaleoni <null@gmx.it>
pkgname=esniper
pkgver=2.26.0
pkgrel=0
pkgver_stripped='2-26-0'
pkgdesc="A simple, lightweight tool for sniping eBay auctions."
arch=('i686' 'x86_64' 'arm')
url="http://esniper.sourceforge.net/"
license=('BSD')
depends=('curl' 'openssl')
source=(http://downloads.sourceforge.net/esniper/${pkgname}-${pkgver_stripped}.tgz esniper.patch)
md5sums=('5ea4ae725691fd2178abebb2ba3ee516'
         'd225b4ff70bcf7947a32830866379511')


build()
{
  cd "${srcdir}/${pkgname}-${pkgver_stripped}"
  patch -p1 < ../esniper.patch
  ./configure --prefix=/usr
  make
}

package()
{
  cd "${srcdir}/${pkgname}-${pkgver_stripped}"
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
  install -D -m755 frontends/snipe "${pkgdir}/usr/bin/snipe"
}
