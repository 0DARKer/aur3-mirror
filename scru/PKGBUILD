pkgname=scru
pkgver=1.0.0
pkgrel=1
pkgdesc="Screenshot Uploader"
arch=(any)
url="https://bitbucket.org/alquimista"
license=("MIT")
depends=("python2" "scrot")
makedepends=("python2-distribute")
optdepnds=("python2-notify: soporte para notificaciones")
source=(${url}/${pkgname}/downloads/${pkgname}-1.tar.gz
        http://pypi.python.org/packages/source/p/plac/plac-0.8.1.tar.gz)
options=(!emptydirs)
md5sums=('f5dc32966e1b92b05a0b33c712835d51'
		 '19709c1af633f5d14af523d723390cdc') #generate with 'makepkg -g'


build() {
	cd plac-0.8.1
	python2 setup.py build
	cd $srcdir/${pkgname}
    python2 setup.py build
}

package() {
  cd plac-0.8.1
  python2 setup.py install --root=$pkgdir	
  cd $srcdir/${pkgname}
  python2 setup.py install --root=$pkgdir
}
