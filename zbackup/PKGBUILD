pkgname=zbackup
pkgver=1.1
pkgrel=1
pkgdesc='zbackup is a globally-deduplicating backup tool, based on the ideas found in rsync'
arch=('i686' 'x86_64')
url='http://zbackup.org'
license=('GPL2')
depends=('xz' 'openssl' 'protobuf')
makedepends=('cmake')
source=(https://github.com/${pkgname}/${pkgname}/archive/${pkgver}.tar.gz)
md5sums=('918b9a272d6b09f839a18b6c2a043fb8')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}