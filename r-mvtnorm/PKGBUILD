# Contributor: Nick B <Shirakawasuna at gmail _dot_com>

pkgname=r-mvtnorm
pkgver=0.9_92
pkgrel=1
pkgdesc="Multivariate normal and t distributions for the R language."
arch=('i686' 'x86_64')
url="http://cran.r-project.org/contrib/Descriptions/mvtnorm.html"
license=("GPL2")
depends=('r')
source=(http://cran.r-project.org/src/contrib/mvtnorm_${pkgver//_/-}.tar.gz)

build() {
 mkdir -p $pkgdir/usr/lib/R/library
 cd $srcdir
 R CMD INSTALL -l ../pkg/usr/lib/R/library ./mvtnorm
 rm $pkgdir/usr/lib/R/library/R.css
}

md5sums=('7e9fbcdc83fd92718ac45868a4c99744')
