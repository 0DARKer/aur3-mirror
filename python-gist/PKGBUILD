pkgname=python-gist
pkgver=0.2.1
pkgrel=1
pkgdesc='Command line interface for working with GitHub gists.'
arch=(any)
url='https://github.com/jdowner/gist'
license=('MIT')
source=("https://pypi.python.org/packages/source/p/python-gist/python-gist-${pkgver}.tar.gz")
md5sums=('44ade230399fe0cb8da1706ae28c1d2e')
depends=('python'
         'python-docopt'
         'python-gnupg'
         'python-requests'
         'python-simplejson')
provides=('gist')
conflicts=('gist'
           'gist-git'
           'ruby-gist')

package() {
	cd "$srcdir/$pkgname-$pkgver"
	python setup.py install --root="$pkgdir/" --optimize=1
}
