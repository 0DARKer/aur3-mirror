pkgname=wxwidgets-fixed
pkgver=2.9.1
pkgrel=1
pkgdesc=" wxWidgets is a C++ library that lets developers create applications for Windows, OS X, Linux and UNIX"
arch=('i686' 'x86_64')
url="http://www.wxwidgets.org/"
license=('wxWindows')
depends=('lesstif' 'gtk2')
#makedepends=()
#provides=()
conflicts=('wxgtk-2.9')
source=(http://downloads.sourceforge.net/wxwindows/wxWidgets-$pkgver.tar.bz2)
md5sums=('81c20d7b2ba31becb18e467dbe09be8f')

build() {
  cd "$srcdir/wxWidgets-$pkgver"
  ./configure --prefix=/usr
  make PYTHON=/usr/bin/python2 || return 1
  make DESTDIR="$pkgdir/" install
}
