# Maintainer: TDY <tdy@gmx.com>

pkgname=blam
pkgver=1.8.8
pkgrel=1
pkgdesc="A simple RSS feed reader"
arch=('i686' 'x86_64')
url="http://blam.cmartin.tk/"
license=('GPL')
depends=('gnome-sharp>=2.16.1' 'webkit-sharp>=0.2')
makedepends=('intltool>=0.25' 'pkgconfig>=0.9')
install=blam.install
source=(http://$pkgname.cmartin.tk/downloads/$pkgname-$pkgver.tar.bz2)
md5sums=('74e5125ae52e6d9971d617665aece28d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc
  make
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="$pkgdir" install
  install -dm755 "$pkgdir/usr/share/gconf/schemas"
  gconf-merge-schema "$pkgdir/usr/share/gconf/schemas/$pkgname.schemas" \
    "$pkgdir/etc/gconf/schemas/$pkgname.schemas"
  rm -rf "$pkgdir/etc"
}
