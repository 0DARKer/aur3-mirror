# Contributor: Giovanni Scafora <linuxmania@gmail.com>

pkgname=slirp
pkgver=1.0.16
pkgrel=2
pkgdesc="Emulates a PPP or SLIP connection over a terminal"
arch=('i686')
url="http://slirp.sourceforge.net"
license=('GPL')
depends=('glibc')
makedepends=('ppp')
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz fix17.patch)
md5sums=('b712f2fe58aaf87172cfd31c95fc1e31' '8a7760e5d8a3c899a70d1bcadebf9f01')

build() {
  cd $startdir/src/$pkgname-$pkgver/src
  patch -Np0 -i ../../fix17.patch
  ./configure --prefix=/usr
  make || return 1
  install -D -m755 slirp $startdir/pkg/usr/bin/slirp
  install -D -m644 slirp.man $startdir/pkg/usr/man/man1/slirp.1
}
