# Contributor : lava

pkgname=mc-skin-modarin-debian
pkgver=1.2
pkgrel=1
debian_mc_version=4.8.1-3
pkgdesc='Debian Wheezy version of 256-color skin for Midnight Commander'
arch=(any)
depends=(mc)
conflicts=(mc-skin-modarin)
license=('unknown')
url=("https://launchpad.net/debian/+source/mc/3:$debian_mc_version")
source=("http://launchpad.net/debian/+archive/primary/+files/mc_$debian_mc_version.debian.tar.gz")
md5sums=('4e7a86e379ddf05cc1d5ead120203b79')

package() {
    cd $srcdir
    mkdir -p $pkgdir/usr/share/mc/skins
    cp $srcdir/debian/skins/modarin-$pkgver/* $pkgdir/usr/share/mc/skins/
    cp $srcdir/debian/skins/modarin-$pkgver-thin/* $pkgdir/usr/share/mc/skins/
}

