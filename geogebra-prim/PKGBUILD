# Maintainer: moostik <mooostik_at_gmail.com>

pkgname=geogebra-prim
pkgver=1
pkgrel=2
pkgdesc="Dynamic mathematics software with interactive graphics, algebra and spreadsheet - for primary school"
arch=('any')
url='http://www.geogebra.org/'
license=('custom')
depends=('geogebra')
install=('geogebra-prim.install')
source=($pkgname.sh
	$pkgname.desktop
	http://www.geogebra.org/download/license.txt)
md5sums=('2250bd77461f8c9bd42347a289165147'
         '3bd363c33dfa8b6510e8e6a4e77611e7'
         '39e2fbaf507a7b8db047152332d695c5')

package() {
  cd $srcdir

  # Installing launch script
  install -D -m755 ${pkgname}.sh ${pkgdir}/usr/bin/${pkgname}
  
  # Creating menu item
  install -D -m644 ${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop

  # Installing license
  install -D -m644 license.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

