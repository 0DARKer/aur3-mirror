pkgname="tw_cli"
pkgver="9.5.3"
pkgrel=1
pkgdesc="AMCC/3ware Storage Management CLI"
url="http://www.3ware.com"
license=('custom')
arch=('i686' 'x86_64')
depends=('glibc')

if [ "$CARCH" = "x86_64" ]; then
  _archsuffix="_64"
  md5sums=('e23f32bd86dcfac97d26fc332a7639c3')
else
  _archsuffix=""
  md5sums=('869eaa6fe7cd86db63e60bf4f34a9087')
fi

source=("http://www.3ware.com/download/Escalade9690SA-Series/9.5.3/tw_cli-linux-x86${_archsuffix}-${pkgver}.tgz")

build() {
    cd ${srcdir}

    install -D -m755 tw_cli ${pkgdir}/usr/sbin/tw_cli
    install -D -m644 tw_cli.8.nroff ${pkgdir}/usr/share/man/man8/tw_cli.8
}
