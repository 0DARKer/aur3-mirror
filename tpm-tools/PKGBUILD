# Contributor: julian <pidanc_j at epita dot fr>

pkgname=tpm-tools
pkgver=1.3.6
pkgrel=1
_baserel=1
pkgdesc="Tools to manage and diagnose a TPM"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/trousers"
license=('CPL')
depends=('trousers' 'opencryptoki')
makedepends=('trousers' 'opencryptoki')
source=(http://downloads.sourceforge.net/project/trousers/${pkgname}/${pkgver}/${pkgname}-${pkgver}-${_baserel}.tar.gz
        no-werror.patch)
md5sums=('b1b1e831cfe4a6ab4830775b987e99d0'
         '82c10054a34f9b9f2e6dd2f0f7057beb')

build() {
  cd ${srcdir}
  patch -p 0 < no-werror.patch

  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --mandir=/usr/share/man
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
