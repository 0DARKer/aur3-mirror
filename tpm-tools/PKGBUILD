# Contributor : julian <pidanc_j at epita dot fr>

pkgname=tpm-tools
pkgver=1.3.5
pkgrel=1
pkgdesc="A set of tools designed to enable the use of TPM"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/trousers"
license=('CPL')
depends=(trousers)
source=(http://downloads.sourceforge.net/project/trousers/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.gz)
md5sums=('b64baa248cf30a57ad0e5fb6f096e7dc')

build() {
	cd ${startdir}/src/${pkgname}-${pkgver}
	./configure --prefix=/usr --mandir=/usr/share/man || return 1
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}



