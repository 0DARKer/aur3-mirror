pkgname=wps-office
pkgver=8.1.0.3670_Alpha8SP3
_pkgver=8.1.0.3670~a8p3_i386
pkgrel=1
pkgdesc="Kingsoft Office is an office productivity suite. "
arch=('i686' 'x86_64')
license=("Custom")
url="http://www.wps.cn/"
sha1sums=('e80d3599ef8f10197b06cb265cbc7a3085fb3988')
install=${pkgname}.install 

source=("http://wdl.cache.ijinshan.com/wps/download/Linux/unstable/${pkgname}_${_pkgver}.deb")

if [ "$CARCH" = "i686" ]; then
    depends=('fontconfig' 'glib2' 'libpng12' 'libsm' 'libxext' 'libxdmcp' 'libxrender')
elif [ "$CARCH" = "x86_64" ]; then
    depends=('lib32-fontconfig' 'lib32-glib2' 'lib32-libpng12' 'lib32-libsm' 'lib32-libxext' 'lib32-libxdmcp' 'lib32-libxrender')
fi
depends+=('desktop-file-utils' 'shared-mime-info' 'xdg-utils')

package()
{
    cd "${srcdir}"
    tar azxvf data.tar.gz -C "${pkgdir}"

    ##去掉方正字体
    #rm -r "${pkgdir}/usr/share/fonts/"
}
