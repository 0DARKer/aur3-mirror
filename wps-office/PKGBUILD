pkgname=wps-office
pkgver=8.1.0.3552_alpha7
_pkgver=8.1.0.3552+wps+wpp+et~a7_i386
pkgrel=1
pkgdesc="Kingsoft Office is an office productivity suite. This is an ALPHA package and provides only Presentation. Use it at your own risk."
arch=('i686' 'x86_64')
license=("Custom")
url="http://www.wps.cn/"
md5sums=('837b76ec3a2b82f77c1761331550f35d')
install=${pkgname}.install 

#不提供软件包的地址，软件还不够稳定，有需要的去论坛求个包
#下面这个地址是我瞎写的 -_-#
source=("http://wps.cn/${pkgname}_${_pkgver}.deb")

if [ "${CARCH}" = 'x86_64' ]; then
  depends=('lib32-glib2' 'lib32-libxrender' 'lib32-fontconfig' 'lib32-libpng12' 'lib32-libpulse' 'lib32-sqlite' 'lib32-openssl')
else	
  depends=('glib2' 'libxrender' 'fontconfig' 'libpng12' 'libpulse' 'sqlite' 'openssl')
fi

package()
{
    cd "${srcdir}"
    tar azxvf data.tar.gz -C "${pkgdir}"

    #修正图标问题
    cd "${pkgdir}/usr/share/applications/"
    sed '$ a\Categories=Office;Presentation;Qt;' -i wps-office-et.desktop

    ##去掉方正字体
    #rm -r "${pkgdir}/usr/share/fonts/"
}
