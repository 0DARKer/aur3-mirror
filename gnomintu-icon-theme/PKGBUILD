# Maintainer: GreenRaccoon23 <GreenRaccoon a t gmail d o t com>

_pkgname=gnomintu
pkgname=gnomintu-icon-theme
pkgver=4
pkgrel=29
pkgdesc='Fusion of Mint-X, GNOME, Ubuntu-Mono, and Humanity icon themes. Close to Mint-X but incorporates the best GNOME, Ubuntu-Mono, and Humanity icons (plus Arch Linux logos).'
arch=('any')
url="https://github.com/GreenRaccoon23/gnomintu/releases/tag/4.0"
license=('GPL3')
makedepends=('git' 'intltool' 'librsvg' 'gtk-update-icon-cache')
source=("$pkgname"::"git+https://github.com/GreenRaccoon23/$_pkgname.git")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname"
    git describe --long --tags | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

package() {
	cd "$srcdir/$pkgname"
  	install -dm 755 "$pkgdir"/usr/share/icons/gnomintu
  	rm -rf {.git,.gitignore,copyright,README.md}
  	cp -dr --no-preserve='ownership' . "$pkgdir"/usr/share/icons/gnomintu/
}