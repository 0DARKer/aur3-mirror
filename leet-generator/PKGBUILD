#Maintainer: boenki <boenki at gmx dot de>
#Contributor: Ionut Biru <ionut@archlinux.ro>

pkgname=leet-generator
pkgver=0.2
pkgrel=2
pkgdesc="Converts normal plaintext into 133773}{7"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/leet-generator/"
license=('GPL2')
depends=('gtk2>=2.18.5')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz
        $pkgname.desktop)
md5sums=('7b714dfad984d41c0ddbc1962164ca9f'
         '6a2aba42609dae5f4267e90d404269a3')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir/ install
  install -Dm644 ../$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}