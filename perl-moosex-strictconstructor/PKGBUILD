# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-moosex-strictconstructor
pkgver=0.16
pkgrel=1
pkgdesc="Make your object constructors blow up on unknown attributes"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~drolsky/MooseX-StrictConstructor-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-namespace-autoclean')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/MooseX-StrictConstructor-$pkgver.tar.gz")
md5sums=('9d8f1b7e261b7c253b8d623d71eaea07')

build() {
	cd "$srcdir/MooseX-StrictConstructor-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/MooseX-StrictConstructor-$pkgver"
	make install DESTDIR="$pkgdir"
}
