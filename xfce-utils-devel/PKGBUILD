# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce-utils-devel
pkgver=4.7.4
pkgrel=1
pkgdesc="Utilities for Xfce (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('libxfce4ui-devel' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool' 'xfce4-dev-tools-devel')
conflicts=('xfce-utils' 'xfce-utils-git')
replaces=('xfce-utils' 'xfce-utils-git')
options=('!libtool')
install=xfce-utils.install
source=(http://archive.xfce.org/src/xfce/xfce-utils/4.7/xfce-utils-${pkgver}.tar.bz2)
md5sums=('2f57594fd504a1a013d0ca5dea898d58')

build() {
  cd ${srcdir}/xfce-utils-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static --with-xsession-prefix=/etc/X11/
  make
}

package() {
	cd ${srcdir}/xfce-utils-${pkgver}
	make DESTDIR=${pkgdir} install
}
