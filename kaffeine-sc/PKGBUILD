# Maintainer: nobange <nobange@poczta.onet.pl>

pkgname=kaffeine-sc
pkgver=0.4.0
pkgrel=1
pkgdesc="Plugin for Kaffeine player for viewing DVB-S encoded channels"
arch=('i686' 'x86_64')
url="https://github.com/falsovsky/kaffeinesc"
license=('GPL')
depends=('kaffeine-kde3')
makedepends=('openssl' 'gcc-libs' 'autoconf')
source=(https://github.com/falsovsky/kaffeinesc/tarball/master/falsovsky-kaffeinesc-4e897ff.tar.gz)
md5sums=('52b59b490c2b94d0481050b8025bec25')

build() {
  cd  $srcdir/falsovsky-kaffeinesc-4e897ff
  ./configure --prefix=/opt/kde
  make 
  make prefix=$pkgdir/opt/kde install
}