# Maintainer: Jan Lieven jan [at] das [minus] labor [dot] org
pkgname=volatility-svn
_pkgbasename=Volatility
pkgver=257
pkgrel=5
pkgdesc="Volatile memory analysis framework"
arch=(any)
url="https://www.volatilesystems.com/default/volatility"
license=('GPL')
depends=(python2)
makedeps=(subversion)
options=(!emptydirs)
source=()
_svntrunk=http://volatility.googlecode.com/svn/trunk/Volatility/
_svnmod=Volatility

build() {
  if [ -d ${srcdir}/.svn ]; then
    msg 'Updating...'
    svn up ${srcdir}
  else
    msg 'Checking out...'
    svn co ${_svntrunk} ${srcdir}/${_svnmod}
  fi

  cd ${srcdir}

  # Make sure we have a clean build directory
  if [ -d ${_svnmod}-build ]; then
    rm -rf ${_svnmod}-build
  fi

  cp -r ${_svnmod} ${_svnmod}-build
  
  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
      -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
      $(find ${_svnmod}-build -name '*.py')
  sed -i 's|c\:\\python\\python.exe|/usr/bin/env python2|g' ${_svnmod}-build/volatility
}

package() {
#  export PYTHON=python2
  cd ${srcdir}/${_svnmod}-build

  python2 setup.py install --root=${pkgdir}/ --optimize=1
  mkdir ${pkgdir}/usr/bin/
  install -m644 vmodules.py ${pkgdir}/usr/bin/
  install -m644 vsyms.py ${pkgdir}/usr/bin/
  install -m755 vtypes.py ${pkgdir}/usr/bin/
  install -m644 vutils.py ${pkgdir}/usr/bin/
  install -m755 volatility ${pkgdir}/usr/bin/

  # Cleaning up to save disk space
  cd ${srcdir}
  rm -rf ${_svnmod}-build
}

# vim:set ts=2 sw=2 et:
