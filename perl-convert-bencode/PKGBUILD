pkgname=perl-convert-bencode
pkgver=1.03
pkgrel=1
pkgdesc="Perl/CPAN Module Convert::Bencode"
arch=("i686" "x86_64")
url="http://search.cpan.org/~orclev/Convert-Bencode-1.03"
license=("GPL" "PerlArtistic")
source=("http://search.cpan.org/CPAN/authors/id/O/OR/ORCLEV/Convert-Bencode-1.03.tar.gz")
options=(!emptydirs)

build() {
  cd $startdir/src/Convert-Bencode-1.03
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}

md5sums=('be0831c69fe581908d33bbebff0b5760')
