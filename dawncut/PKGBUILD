# Maintainer: Luis Sarmiento <lgsarmientop@unal.edu.co>

pkgname=dawncut
pkgver=1.54a
_pkgver=1_54a
pkgrel=1
pkgdesc="Tool to generate a 3D DAWN scene data clipped with an arbitrary plane."
url="http://geant4.kek.jp/~tanaka/DAWN/About_DAWNCUT.html"
arch=('x86_64' 'i686')
license=('unknown')
depends=('dawn')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=''
source=("http://geant4.kek.jp/~tanaka/src/${pkgname}_${_pkgver}.taz"
        )
md5sums=('0c9f52f80c3fae6c37c58c6fd79bbb6b')

build() {
  cd "${srcdir}/${pkgname}_${_pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}_${_pkgver}"
  [ -d ${pkgdir}/usr/bin/ ] || mkdir -p ${pkgdir}/usr/bin/
  cp ${pkgname}  ${pkgdir}/usr/bin/

  DOCDIR=/usr/share/doc/${pkgname}
  [ -d ${pkgdir}${DOCDIR} ] || mkdir -p ${pkgdir}${DOCDIR}
  cd ${srcdir}/${pkgname}_${_pkgver}
  cp *.html  ${pkgdir}${DOCDIR}/
}