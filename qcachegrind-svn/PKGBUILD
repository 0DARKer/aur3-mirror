# Maintainer: steabert <steabert@member.fsf.org>
pkgname=qcachegrind-svn
pkgver=1239972
pkgrel=1
pkgdesc="Visualization of Performance Profiling Data (Qt version)"
arch=('i686' 'x86_64')
url="http://kcachegrind.sourceforge.net"
license=('GPL')
depends=('qt>=4.5')
makedepends=('gcc' 'make' 'pkg-config' 'subversion' 'qt')
optdepends=('graphviz')
provides=('qcachegrind')
conflicts=('qcachegrind')
options=()
source=()
md5sums=()

_svntrunk="svn://anonsvn.kde.org/home/kde/trunk/KDE/kdesdk/kcachegrind"
_svnmod="kcachegrind"

build() {
  cd ${srcdir}

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk $_svnmod
  fi

  msg "SVN checkout done or server timeout"

  if [ ! -d ${_svnmod}-build ]; then
    mkdir ${_svnmod}-build
  fi

  msg "Starting make..."
  cd ${_svnmod}-build; qmake ../${_svnmod}/qcg.pro; make || return 1
}

package() {
  install -D -m 755 -p ${srcdir}/${_svnmod}-build/qcachegrind/qcachegrind ${pkgdir}/usr/bin/qcachegrind
  install -D -m 755 -p ${srcdir}/${_svnmod}-build/cgview/cgview ${pkgdir}/usr/bin/cgview
}
