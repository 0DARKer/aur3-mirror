# Maintainer: Alex Charron <undeterminant@gmail.com>
pkgname=custom-session-git
pkgver=20111226
pkgrel=1
pkgdesc="Tools for managing a custom user session under a Linux-based OS."
arch=('i686' 'x86_64')
url="https://github.com/Undeterminant/custom-session"
license=('public')
depends=('consolekit' 'python' 'xorg-server')
source=()
md5sums=()
_gitroot="https://github.com/Undeterminant/custom-session.git"
_gitname="custom-session"

build()
{
	cd "$srcdir"
	msg "Connecting to GIT server...."

	if [[ -d "$_gitname" ]]; then
		cd "$_gitname" && git pull origin
		msg "The local files are updated."
	else
		git clone "$_gitroot" "$_gitname"
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	rm -rf "$srcdir/$_gitname-build"
	git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
	cd "$srcdir/$_gitname-build"
}

package()
{
	cd "$srcdir/$_gitname-build"
	make install PREFIX="$pkgdir"
}
