# Maintainer: Michael Seiwald <michael@mseiwald.at>
pkgname=davical
_pkgname=awl
pkgver=0.9.9.2
_pkgver=0.45
pkgrel=1
pkgdesc="DAViCal CalDAV Server"
arch=(i686 x86_64)
url="http://davical.org/"
license=('GPL')
groups=()
depends=('postgresql' 'php-pgsql' 'perl-dbd-pg' 'perl-yaml')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://downloads.sourceforge.net/project/rscds/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz" "http://downloads.sourceforge.net/project/rscds/$_pkgname/$_pkgver/$_pkgname-$_pkgver.tar.gz")
noextract=()
md5sums=('c35047bab51ca86729cba94f81988db8' 'c3d8e630dae7e247a1a8ac5e2ca2097f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
}

package() {
  cd "$srcdir/$_pkgname-$_pkgver"
  mkdir -p $pkgdir/usr/share/awl
  cp -a . $pkgdir/usr/share/awl

  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p $pkgdir/usr/share/davical
  cp -a . $pkgdir/usr/share/davical
}

