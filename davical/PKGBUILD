# Maintainer: Andre Wayand <aur-davical@awayand.sleepmail.com>
pkgname=davical
_pkgname=awl
pkgver=0.9.9.4
_pkgver=0.46
pkgrel=1
pkgdesc="DAViCal CalDAV Server"
arch=(i686 x86_64)
url="http://davical.org/"
license=('GPL')
groups=()
depends=('postgresql' 'php-pgsql' 'perl-dbd-pg' 'perl-yaml')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://debian.mcmillan.net.nz/packages/$pkgname/$pkgname-$pkgver.tar.gz" "http://debian.mcmillan.net.nz/packages/$_pkgname/$_pkgname-$_pkgver.tar.gz")
noextract=()
md5sums=('8d43279a124ee0e207fc2c071e8df882'
         '9bb397d48e327f6d5c3ebc350956371d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
}

package() {
  cd "$srcdir/$_pkgname-$_pkgver"
  mkdir -p $pkgdir/usr/share/awl
  cp -a . $pkgdir/usr/share/awl

  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p $pkgdir/usr/share/davical
  cp -a . $pkgdir/usr/share/davical
}
