# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-prboom-git
_gitname=libretro-prboom
pkgver=2013.04.08_80d5060
pkgrel=1
pkgdesc="libretro implementation of PrBoom. (Doom)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/libretro-prboom"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')
install=libretro-prboom.install
source=('git://github.com/libretro/libretro-prboom.git')
md5sums=('SKIP')


pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   mkdir -p $pkgdir/usr/lib/libretro/extras
   mkdir -p $pkgdir/usr/lib/libretro/extras/libretro-prboom
   install -v -m644 $srcdir/$_gitname/prboom.wad $pkgdir/usr/lib/libretro/extras/libretro-prboom/prboom.wad
   install -v -m644 $srcdir/$_gitname/prboom_libretro.so $pkgdir/usr/lib/libretro/libretro-prboom.so
}

