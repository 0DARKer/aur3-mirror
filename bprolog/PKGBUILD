# Maintainer: Davide Iosca <dvdios[at]aol[dot]com>
pkgname=bprolog
pkgver=7.8
pkgrel=1
pkgdesc="versatile and efficient constraint logic programming (CLP) system."
arch=('x86_64')
url="http://www.probp.com/"
license=('custom:bprolog')
depends=()
source=("http://www.probp.com/download/bp78_linux64.tar.gz"
  "bp")
md5sums=('e9efbf0265cd4f5937dc8442974a2fe9'
  'e70a0fcc02ad70de06919acaf4269de6')

package() {
  cd "${srcdir}/BProlog"
  install -Dm755 Emulator/${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -Dm644 bp.out ${pkgdir}/usr/share/${pkgname}/bp.out
  install -Dm755 ../bp ${pkgdir}/usr/bin/bp
}
