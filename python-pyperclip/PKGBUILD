pkgname=python-pyperclip
pkgver=1.5.7
pkgrel=1
pkgdesc="A cross-platform clipboard module for Python 3."
arch=('any')
url="http://coffeeghost.net/2010/10/09/pyperclip-a-cross-platform-clipboard-module-for-python/"
license=('BSD')
depends=('python' 'xclip')
source=("https://pypi.python.org/packages/source/p/pyperclip/pyperclip-$pkgver.zip")
md5sums=('678e42420aa569b15e82636dc73ed7c5')

package() {
  cd $srcdir/pyperclip-$pkgver
  python setup.py install --root="$pkgdir/" --optimize=1
}

