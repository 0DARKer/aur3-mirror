# Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=libbluray-git
pkgver=20120418
pkgrel=1
pkgdesc="Blu-Ray access library"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.videolan.org/developers/libbluray.html"
depends=('libxml2')
makedepends=('git' 'apache-ant' 'java-environment' 'libaacs-git')
optdepends=('libbdplus' 'java-runtime')
provides=('libbluray')
conflicts=('libbluray')
options=('!libtool')

_gitroot="git://git.videolan.org/libbluray.git"
_gitname="libbluray"

build() {
    msg "Connecting to GIT server..."

    if [ -d "${srcdir}"/"${_gitname}" ] ; then
        cd "${_gitname}" && git pull
    else
        git clone --depth=1 "${_gitroot}"
    fi
    
    [ -d "${srcdir}"/"${_gitname}"-build ] && rm -fr "${srcdir}"/"${_gitname}"-build
    cp -R "${srcdir}"/"${_gitname}" "${srcdir}"/"${_gitname}"-build
    
    msg "GIT checkout done or server timeout"
    msg "Starting build..."
	
    cd "${srcdir}"/"${_gitname}"-build
 
    source /etc/profile
    ./bootstrap
    ./configure --prefix=/usr --with-jdk=$J2SDKDIR --enable-bdjava
    make
}
package() {
    cd "${srcdir}"/"${_gitname}"-build
    make DESTDIR="${pkgdir}" install
}
