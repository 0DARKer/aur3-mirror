pkgname="r2-bindings"
pkgver=0.8.8
pkgrel=2
pkgdesc="radare2 language bindings"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3')
depends=('radare2')
options=('emptydirs')
source=(http://www.radare.org/get/${pkgname}-${pkgver}.tar.gz
        Makefile.patch)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

  patch -p0 < ../Makefile.patch
	./configure --prefix=/usr
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}

  install -d -m755 ${pkgdir}/usr/lib/go/pkg/linux_amd64
	make DESTDIR=${pkgdir} install
  rm -rf ${pkgdir}/usr/lib/go
}
md5sums=('e37b8e8cae64c55e48afff927dd57514'
         '9ddd0cbdf35497293918288fc7c75052')
