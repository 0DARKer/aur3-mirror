pkgname="r2-bindings"
pkgver=0.8.8
pkgrel=1
pkgdesc="radare2 language bindings"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3')
depends=('radare2')
options=('emptydirs')
source=(http://www.radare.org/get/${pkgname}-${pkgver}.tar.gz)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	./configure --prefix=/usr --disable=go

  sed -i 's/python//g' supported.langs
  sed -i '/^$/d' supported.langs

	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}

  install -d -m755 ${pkgdir}/usr/lib/go/pkg/linux_amd64
	make DESTDIR=${pkgdir} install
}
md5sums=('f5b942b26365aed20d250ac566b14e01')
