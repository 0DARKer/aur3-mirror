pkgname="r2-bindings"
pkgver=0.8.1
pkgrel=1
pkgdesc="radare2 language bindings"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3')
depends=('radare2')
source=(http://www.radare.org/get/${pkgname}-${pkgver}.tar.gz)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	./configure --prefix=/usr

	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}

	make DESTDIR=${pkgdir} install
}
sha256sums=('f5991687175f4406fe4bb76970767c79404df00f1fa70a2bfef941cd91c3c24a')
