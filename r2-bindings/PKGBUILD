pkgname="r2-bindings"
pkgver=0.8.6
pkgrel=1
pkgdesc="radare2 language bindings"
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL3')
depends=('radare2')
source=(http://www.radare.org/get/${pkgname}-${pkgver}.tar.gz)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	./configure --prefix=/usr --disable=go

  sed -i "s|\$\${GOROOT}/pkg/\$\${GOOS}_\$\${GOARCH}|\${DESTDIR}\$\${GOROOT}/pkg/\$\${GOOS}_\$\${GOARCH}|g" Makefile
  sed -i "s|install-go||g" Makefile

	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}

  install -d -m755 ${pkgdir}/usr/lib/go/pkg/linux_amd64
	make DESTDIR=${pkgdir} install
}
md5sums=('29c5c43a361d99b92880108228bb82f7')
