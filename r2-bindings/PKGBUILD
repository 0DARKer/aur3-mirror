	

    pkgname="r2-bindings"
    pkgver=0.9.4
    pkgrel=1
    pkgdesc="radare2 language bindings"
    arch=('i686' 'x86_64')
    url="http://radare.org"
    license=('GPL3')
    depends=('radare2' 'valabind' 'swig')
    options=('emptydirs')
    source=(http://www.radare.org/get/${pkgname}-${pkgver}.tar.gz)
     
    build() {
            cd ${srcdir}/${pkgname}-${pkgver}
     
            ./configure --prefix=/usr --enable-devel
            PYTHON_CONFIG=python2.7-config make python2
    }
     
    package() {
            cd ${srcdir}/${pkgname}-${pkgver}
            make DESTDIR=${pkgdir} install-vapi
            make DESTDIR=${pkgdir} PYTHON_CONFIG=python2.7-config install-python
    }
     
    md5sums=('5fdc3ddcad0787443036262b789efa4f')

