# Maintainer: Philipp Ãœberbacher <murks at lavabit dot com>
pkgname=zita-convolver
pkgver=2.0.0
pkgrel=2
pkgdesc="Convolution library for aeolus and jconvolver"
arch=('i686' 'x86_64')
url="http://www.kokkinizita.net/linuxaudio"
license=('LGPL')
depends=('gcc-libs' 'fftw')
source=(http://www.kokkinizita.net/linuxaudio/downloads/${pkgname}-${pkgver}.tar.bz2)
install=$pkgname.install
md5sums=('7e4e30fb628aed009fa22e4ed46f556a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}/libs
  sed -i 's/usr\/local/usr/' Makefile || return 1
  sed -i 's/ldconfig//' Makefile || return 1
  sed -i 's/i686/native/' Makefile || return 1
  make SUFFIX="" PREFIX=${pkgdir}/usr install || return 1
}
