# Contributor: manveru <m.fellinger@gmail.com>
pkgname=pluvo
pkgver=20060708
pkgrel=1
pkgdesc="Pluvo is a functional and imperative programming language interpreted using a just-in-time compiler."
url="http://inamidst.com/pluvo/"
depends=('python')
source=(http://inamidst.com/pluvo/${pkgname}-latest.tar.gz)
md5sums=('3a729916c8bbfe1a64ad4253b2fcd44f')

build() {
  cd $startdir/src/$pkgname-latest
  ./configure
  make clean
  make || return 1

  mkdir -p $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/opt

  cp -r $startdir/src/$pkgname-latest/build/lib/pluvo $startdir/pkg/opt/
  cp $startdir/src/$pkgname-latest/pluvo $startdir/pkg/opt/pluvo/
  ln -sf /opt/pluvo/pluvo $startdir/pkg/usr/bin/pluvo
}
