# Contributor: oslik <oslik@mail.ru>
pkgname=udav
pkgver=0.7
pkgrel=1
pkgdesc="Cross-platform program for data arrays visualization based on MathGL library"
arch=(i686)
url="http://udav.sourceforge.net"
license=('GPL')
depends=('mathgl>=1.10' 'qt' 'hdf5')
source=(http://downloads.sourceforge.net/udav/$pkgname-$pkgver.tgz)
md5sums=('896514eaed846cfb4890ed410aecb088')

options=(docs)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  usrdir=`echo -E $pkgdir | sed s/\\\//\\\\\\\\\\\//g`\\/usr
  sed -i s/\\/usr\\/local/$usrdir/ src/src.pro

  qmake -makefile -unix -o Makefile "DEFINES *= H5_USE_16_API" udav.pro
  make sub-src-qmake_all
  MGLDOCDIR=/usr/share/doc/udav/ make || return 1
  make install
}

# vim:set ts=2 sw=2 et:
