# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=amide  
pkgver=0.9.2
pkgrel=4
pkgdesc="Medical Imaging Data Examiner"
url="http://amide.sourceforge.net/packages.html"
arch=('i686' 'x86_64')
license=('GPL')
depends=('xmedcon' 'libgnomecanvas' 'gsl' 'gnome-vfs' 'ffmpeg')
source=(http://downloads.sourceforge.net/project/$pkgname/amide/$pkgver/$pkgname-$pkgver.tgz archlinux.patch)
md5sums=('0d40364f35011fd8a1a2e87512aceb1d'
         '1af780142cef1fc59f7c052242846807')
build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p1 < $srcdir/archlinux.patch
  ./configure --prefix=/usr --enable-libdcmdata \
    --with-xmedcon-exec-prefix=/usr/bin
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
  sed -i 's+.png++' $pkgdir/usr/share/applications/amide.desktop
}
