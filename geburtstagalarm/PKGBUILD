#Maintainer: Hans - Peter Meyer hp.meyer@yahoo.de 
pkgname=geburtstagalarm #Paketname
pkgver=1 #Versionsnummer ggf. Datum
pkgrel=1.0 #Releaseversion
pkgdesc="A Programm for development Testing" #Helloworld
arch=('any') #Alle Architekturen nutzbar
url="http://klinge19.kl.funpic.de" #URL des Projekts
license=('GPL') #Licence
#depends=('curl') #Abhängigkeiten des Programms ; Hier: Keine
makedepends=('wget') #Abhängigkeiten zum erstellen des Paketes





_srcURL="http://klinge19.kl.funpic.de/software/test.txt"

build() {
    rm -rf $srcdir/$pkgname-$pkgver
    mkdir $srcdir/$pkgname-$pkgver
    wget $_srcURL -O $srcdir/$pkgname-$pkgver/geburtstagalarm.sh
    cd $srcdir/$pkgname-$pkgver
}

package() {
mkdir -p $pkgdir/usr/bin
cp "$srcdir/$pkgname-$pkgver/geburtstagalarm.sh" "$pkgdir/usr/bin/geburtstagalarm"
chmod +x $pkgdir/usr/bin/geburtstagalarm
}
