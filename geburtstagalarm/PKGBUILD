#Maintainer: Hans - Peter Meyer hp.meyer@yahoo.de 

pkgname=geburtstagalarm
pkgver=1
pkgrel=1.0
pkgdesc="A Programm for development Testing - UNDER CONSTRUCTION"
arch=('any')
url="http://klinge19.kl.funpic.de"
license=('GPL')
depends=('java-runtime')
makedepends=('wget')

_srcURL="http://klinge19.kl.funpic.de/software/${pkgname}/$pkgver/${pkgname}.jar"
_srcURL2="http://klinge19.kl.funpic.de/software/${pkgname}/$pkgver/${pkgname}.sh"

#Testumgebung
#_srcURL="http://localhost/${pkgname}.jar"
#_srcURL2="http://localhost/${pkgname}.sh"

build() {
    rm -rf ${srcdir}/${pkgname}-${pkgver}
    mkdir ${srcdir}/${pkgname}-${pkgver}
    wget $_srcURL -O ${srcdir}/${pkgname}-${pkgver}/${pkgname}.jar
    wget $_srcURL2 -O ${srcdir}/${pkgname}-${pkgver}/${pkgname}.sh
    cd ${srcdir}/${pkgname}-${pkgver}/
    
    cd "$srcdir"/$pkgname-$pkgver
  # install jar file
  install -Dm644 $pkgname.jar "$pkgdir"/usr/share/java/$pkgname.jar
    
    # install launcher
  install -Dm755 $pkgname.sh "$pkgdir"/usr/bin/$pkgname
    
    
}
   
