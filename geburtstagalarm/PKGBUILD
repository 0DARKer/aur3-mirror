Maintainer: Hans - Peter Meyer hp.meyer@yahoo.de 
pkgname=geburtstagalarm
pkgver=1
pkgrel=1.0
pkgdesc="A Testapplication"
arch=('any')
url="http://cyberdog86.de"
license=('GPL')
makedepends=('wget')
depends=('sh' 'java-environment')

#Testumgebung
#_srcURL="http://localhost/Software/${pkgname}/${pkgver}/${pkgname}.jar"
#_srcURL2="http://localhost/Software/${pkgname}/${pkgver}/${pkgname}.sh"

#Online
_srcURL="http://cyberdog86.de/Software/${pkgname}/${pkgver}/${pkgname}.jar"
_srcURL2="http://cyberdog86.de/Software/${pkgname}/${pkgver}/${pkgname}.sh"

build() {
rm -rf ${srcdir}/${pkgname}-${pkgver}
mkdir ${srcdir}/${pkgname}-${pkgver}
wget $_srcURL -O ${srcdir}/${pkgname}-${pkgver}/${pkgname}.jar
wget $_srcURL2 -O ${srcdir}/${pkgname}-${pkgver}/${pkgname}.sh
}

package() {
cd ${srcdir}/${pkgname}-${pkgver}/

#install jar file
install -Dm644 ${pkgname}.jar "${pkgdir}"/usr/share/java/${pkgname}.jar

# install launcher
install -Dm755 ${pkgname}.sh "${pkgdir}"/usr/bin/${pkgname}
}
