#Maintainer: Hans - Peter Meyer hp.meyer@yahoo.de 

pkgname=geburtstagalarm
pkgver=1
pkgrel=1.0
pkgdesc="A Programm for development Testing"
arch=('any')
url="http://klinge19.kl.funpic.de"
license=('GPL')
makedepends=('wget')

_srcURL="http://klinge19.kl.funpic.de/software/test.txt"

build() {
    rm -rf $srcdir/$pkgname-$pkgver
    mkdir $srcdir/$pkgname-$pkgver
    wget $_srcURL -O $srcdir/$pkgname-$pkgver/geburtstagalarm.sh
    cd $srcdir/$pkgname-$pkgver
}

package() {
mkdir -p $pkgdir/usr/bin
cp "$srcdir/$pkgname-$pkgver/geburtstagalarm.sh" "$pkgdir/usr/bin/geburtstagalarm"
chmod +x $pkgdir/usr/bin/geburtstagalarm
}
