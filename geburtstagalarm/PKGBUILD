pkgname=geburtstagalarm
pkgver=1
pkgrel=1.0
pkgdesc="A Programm for development Testing - Under Construction"
arch=('any')
url="http://klinge19.kl.funpic.de"
license=('GPL')
makedepends=('wget')

_srcURL="http://klinge19.kl.funpic.de/software/geburtstagalarm-0.1.tar.gz"
#_srcURL="http://localhost/geburtstagalarm-0.1.tar.gz"

build() {
    rm -rf $srcdir/$pkgname-$pkgver
    mkdir $srcdir/$pkgname-$pkgver
    wget $_srcURL -O $srcdir/$pkgname-$pkgver/geburtstagalarm-0.1.tar.gz
    cd $srcdir/$pkgname-$pkgver/
}

package() {
    tar  xvf $srcdir/$pkgname-$pkgver/geburtstagalarm-0.1.tar.gz
    cd $srcdir/$pkgname-0.1/
    ./configure --prefix=/usr
    sudo make install
    
    #The File not found in the Destination Folder. So I copy it manually
    sudo cp $srcdir/$pkgname-0.1/geburtstagalarm/bin/Debug/geburtstagalarm.exe /usr/lib/geburtstagalarm/geburtstagalarm.exe

}
    
   
