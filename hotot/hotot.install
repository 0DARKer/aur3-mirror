post_install() {
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  update-desktop-database -q
}

pre_upgrade() {
  _EGG=usr/lib/python2.7/site-packages/hotot-0.9.6-py2.7.egg-info
  if [ -d $_EGG ]; then
    rm -rf $_EGG && cat << EOF

>>> Old egg-info directory successfully removed.

EOF
  fi
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}
