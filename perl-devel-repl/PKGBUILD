# CPAN Name  : Devel-REPL
# Contributor: Justin Davis <jrcd83@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 1.10
pkgname='perl-devel-repl'
pkgver='1.003012'
pkgrel='1'
pkgdesc="a modern perl interactive shell"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-data-dumper-concise' 'perl-file-homedir' 'perl-file-next' 'perl-lexical-persistence' 'perl-moose>=0.74' 'perl-moosex-attributehelpers>=0.16' 'perl-moosex-getopt>=0.18' 'perl-moosex-object-pluggable>=0.0009' 'perl-namespace-clean' 'perl-task-weaken')
makedepends=()
optdepends=('perl-data-dump-streamer: better format results'
            'perl-data-dumper-concise: even better format results'
            'perl-file-next: tab complete module names in use and require'
            'perl-sys-sigaction: traps SIGINT to kill long-running lines'
            'perl-b-keywords: tab complete perl keywords and operators'
            'perl-lexical-persistence: keep "my" vars between statements'
            'perl-ppi: better tab completion, block reading, dumping'
            'perl-app-nopaste: upload a sessions input/output to pastebin'
            'perl-module-refresh: automatically reload libraries')
url='http://search.cpan.org/dist/Devel-REPL'
source=('http://search.cpan.org/CPAN/authors/id/D/DO/DOY/Devel-REPL-1.003012.tar.gz')
md5sums=('bff993f2799b2e2cfbc89fbb74607106')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Devel-REPL-1.003012"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  cd "$DIST_DIR"
  $PERL Makefile.PL
  make
  make test
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
