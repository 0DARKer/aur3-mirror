# Contributor: Nick B <Shirakawasuna at gmail _dot_com>
pkgname=kuklomenos 
pkgver=0.4.4
pkgrel=1
pkgdesc="An abstract shoot-em-up with a strategical twist."
arch=('i686' 'x86_64') 
url="http://mbays.freeshell.org/kuklomenos/" 
license=('GPL3') 
depends=('curl' 'sdl') 
source=(http://mbays.freeshell.org/kuklomenos/src/kuklomenos-$pkgver.tar.gz
	desktop_kuklomenos)

build() {

cd $startdir/src/kuklomenos-$pkgver
./configure --prefix=/usr || return 1
make || return 1
make DESTDIR=$startdir/pkg install || return 1
install -D -m644 $startdir/src/desktop_kuklomenos $startdir/pkg/usr/share/applications/kuklomenos.desktop
mkdir -p $pkgdir/usr/share/kuklomenos
install -m644 $startdir/src/kuklomenos-$pkgver/README $startdir/pkg/usr/share/kuklomenos/
}
md5sums=('0e5b7fd01ce8c43356ca7e7c8925d885'
         'a15c92bf5464273c169a4041d8519be6')
