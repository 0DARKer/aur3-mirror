# Creator: the same

pkgname=gmawalpaper
pkgver=0.1
pkgrel=6
pkgdesc="Wallpaper changer for gnome"
arch=('x86_64')
url="https://github.com/gmoraesalvarez/gma-wallpaper"
license=('GPL2')
#install=gmawallpaper.install
source=(https://github.com/gmoraesalvarez/gma-wallpaper/raw/master/gmawallpaper.tar.bz2)
sha512sums=('cc28b65c24a2051019774104c8ea96608321007a2e21189cbc1a6642ed20029cfbd371659d6f2d82259ac4afdffc0ed16b97e11f76f9a725af0e076aef00f28f')


package() {
    cd "${srcdir}"

    mkdir -p "${pkgdir}/usr/bin/"
    cp gmawallpaper "${pkgdir}/usr/bin"
    mkdir -p "${pkgdir}/usr/share/applications"
    cp gmawallpaper.desktop "${pkgdir}/usr/share/applications"
}
