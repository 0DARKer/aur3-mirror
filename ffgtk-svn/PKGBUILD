# Maintainer: Ronny Steiner <post@sirsteiner.de>
# AUR Category: office
pkgname=ffgtk-svn
pkgver=1147
pkgrel=1
pkgdesc="FRITZ!Box Fax-Software and Call-Monitor (SVN-Version)"
url="http://www.tabos.org/ffgtk"
license="GPL"
depends=('libcapi20' 'capifax>=0.7.3-4' 'spandsp')
makedepends=('libcapi20' 'spandsp' 'intltool')
conflicts=('ffgtk')
arch=(i686 x86_64)
#source=(patch.Makefile)
source=()
#md5sums=('eef2bef072e5b4ed07b4236e50ea1256')
md5sums=()
install=('ffgtk.install')

build() {
  cd ${srcdir}
  svn co http://svn.tabos.org/repos/ffgtk/trunk ./${pkgname}
  cd ${srcdir}/${pkgname}
#  patch -uN ./ffgtk/Makefile.am ../../patch.Makefile
  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc --with-gnome-keyring=no
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
