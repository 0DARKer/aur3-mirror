# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=quickplot
pkgver=0.10.6
pkgrel=1
pkgdesc='A fast interactive 2D plotter'
arch=('i686' 'x86_64')
url="http://quickplot.sourceforge.net/"
license=('GPL3')
depends=('gtk3' 'libsndfile')
source=("http://downloads.sourceforge.net/project/quickplot/quickplot-${pkgver}/quickplot-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/quickplot-${pkgver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/quickplot-${pkgver}"
	make DESTDIR="$pkgdir" install
}

md5sums=('02e786cb84504645454d453c9d8caf2e')
