pkgname=tangogps
pkgver=0.99.3
pkgrel=1
license=GPL
pkgdesc="TangoGPS is a lightweight and fast mapping application"
arch=(i686 x86_64)
depends=('curl' 'dbus' 'gconf' 'gdk-pixbuf' 'pkgconfig' 'libexif')
source=(http://www.tangogps.org/downloads/$pkgname-$pkgver.tar.gz)
url="http://www.tangogps.org/"
md5sums=('74b4f584b6edae576c1d77d166a9476e')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
