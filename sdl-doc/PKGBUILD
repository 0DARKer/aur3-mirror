# Maintainer: Axper Jan <483ken at gmail dot com>
pkgname=sdl-doc
pkgver=1.0
pkgrel=1
pkgdesc="Set of HTML documentation for SDL"
arch=('any')
url="http://www.libsdl.org/index.php"
license=('LGPL2.1')
groups=('devel')
source=("http://www.libsdl.org/archives/SDL-${pkgver}-english-intro.tar.gz"
        "http://www.libsdl.org/archives/sdldoc-html.tar.gz")
sha512sums=('b726dc3f0c7ed9603d06aaf83de2b3b5dbd138d5dd8517e48935f4ee49aa1eb3bb7614a43ba21178e9cb7ac034fb15c0229a9dd40d1318879c3558e75505f31b'
            '40f8a1f0355fcb88d1602a6397195ebb5be775cfb75fdeace75add3df0f42779c9212238043a9b2fb609dbc13db5fde8cbbcb816512c35079ed8305b9e5db084')

package() {
  mkdir -p "${pkgdir}/usr/share/doc/sdl"
  mkdir "${pkgdir}/usr/share/doc/sdl/intro.en"
  cd "${srcdir}"

  # html
  cp -R "html" "${pkgdir}/usr/share/doc/sdl"

  # intro.en
  cp intro.en/*.html "${pkgdir}/usr/share/doc/sdl/intro.en"
}
