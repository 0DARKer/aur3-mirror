# Maintainer:  Bartlomiej Piotrowski
# Contributor: res <andres87p@gmail.com>

pkgname=uclibc
_pkgname=${pkgname/c/C}
pkgver=0.9.33
pkgrel=1
pkgdesc='C library for developing embedded Linux systems'
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.uclibc.org/"
source=(http://www.uclibc.org/downloads/${_pkgname}-${pkgver}.tar.xz)
md5sums=('940b411bfac938a77d25a86cb53d67ff')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"

    msg "Running make menuconfig"
    make menuconfig
    make
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"
    make PREFIX="$pkgdir/" install
}
