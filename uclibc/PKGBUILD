# Maintainer: Bartek Piotrowski <barthalion@gmail.com>
# Contributor: res <andres87p@gmail.com>

pkgname=uclibc
_pkgname=uClibc
pkgver=0.9.32_rc3
pkgrel=1
pkgdesc='C library for developing embedded Linux systems'
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.uclibc.org/"
source=(http://www.uclibc.org/downloads/${_pkgname}-${pkgver/_/-}.tar.xz)
md5sums=('983996d11633f3b72f0f5c03fee7dd8f')
_makemenucfg="n"

build() {
    cd "${srcdir}/${_pkgname}-${pkgver/_/-}"

    msg "Running make menuconfig"
    make menuconfig
    make
}

package() {
    cd "${srcdir}/${_pkgname}-${pkgver/_/-}"
    make PREFIX="$pkgdir/" install
}
