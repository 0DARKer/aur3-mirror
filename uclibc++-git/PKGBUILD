# Maintainer: Jens Staal <staal1978@gmail.com>

pkgname=uclibc++-git
_pkgname=uClibc++
pkgver=14.01.11
pkgrel=1
pkgdesc='C++ standard library targeted towards the embedded systems/software market'
arch=('i686' 'x86_64')
license=('LGPL')
url="http://cxx.uclibc.org/"
makedepends=('git')
provides=('uclibc++')

build() {

    git clone git://git.busybox.net/uClibc++     

    cd $startdir/src/$_pkgname
    msg "Running make menuconfig"
    make menuconfig
    make
    make PREFIX=$pkgdir install
}
