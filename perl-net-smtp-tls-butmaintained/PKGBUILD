arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-digest-hmac' 'perl-io-socket-ssl>=1.76' 'perl-net-ssleay')
makedepends=()
url='http://search.cpan.org/dist/Net-SMTP-TLS-ButMaintained'
source=('http://search.cpan.org/CPAN/authors/id/F/FA/FAYLAND/Net-SMTP-TLS-ButMaintained-0.20.tar.gz')
