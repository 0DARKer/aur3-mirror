# Contributor: Jens Staal <staal1978@gmail.com>

pkgname=pcc-selfhost-static
pkgver=1.1.0.DEVEL
pkgrel=1
pkgdesc="Self-hosting Portable C Compiler and its libraries"
arch=('i686' 'x86_64')
url="http://pcc.ludd.ltu.se/"
license=('custom:BSD')
provides=('pcc-libs' 'pcc')
conflicts=('pcc-libs' 'pcc')
depends=('pcc')
makedepends=('cvs')

_cvsroot=":pserver:anonymous@pcc.ludd.ltu.se:/cvsroot"

build() {
#some build environment stuff defined
  export CC=pcc
  export CFLAGS="-xdce -xssa -O -static"

  cd "$srcdir"

  msg "Building libraries"
  msg "Connecting to CVS server...."
  if [ -d pcc-libs/CVS ]; then
    cd pcc-libs
    cvs -z3 update -d
  else
    cvs -z3 -d $_cvsroot co -D $pkgver -f pcc-libs
    cd pcc-libs
  fi

  msg "CVS checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/pcc-libs-build"
  cp -ar "$srcdir/pcc-libs" "$srcdir/pcc-libs-build"
  cd "$srcdir/pcc-libs-build"

  ./configure --prefix=/usr || return 1
  make all || return 1
  make DESTDIR=$pkgdir install || return 1

  msg "Building PCC"
  cd "$srcdir"

  msg "Connecting to CVS server...."
  if [ -d pcc/CVS ]; then
    cd pcc
    cvs -z3 update -d
  else
    cvs -z3 -d $_cvsroot co -D $pkgver -f pcc
    cd pcc
  fi

  msg "CVS checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/pcc-build"
  cp -ar "$srcdir/pcc" "$srcdir/pcc-build"
  cd "$srcdir/pcc-build"

#setting up new build environment variables
  export CC="pcc -nostdlib -I$pkgdir/usr/lib/pcc/${CARCH}-unknown-linux-gnu/$pkgver/include -L$pkgdir/usr/lib/pcc/${CARCH}-unknown-linux-gnu/$pkgver/lib"
  ./configure --prefix=/usr --libexecdir=/usr/lib/pcc/ || return 1

  make || return 1

  make DESTDIR=$pkgdir install || return 1
  cd "$pkgdir/usr/share/man/man1"

  mv ${pkgdir}/usr/share/man/man1/cpp.1 ${pkgdir}/usr/share/man/man1/cpp.1pcc
}
