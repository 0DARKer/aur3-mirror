pkgname=pcc-selfhost-static
pkgver=1.1.0.DEVEL
pkgrel=1
pkgdesc="Self-hosting Portable C Compiler and its libraries"
arch=('i686' 'x86_64')
url="http://pcc.ludd.ltu.se/"
license=('custom:BSD')
provides=('pcc-libs' 'pcc')
conflicts=('pcc-libs' 'pcc')
depends=('pcc')
makedepends=('cvs')

_cvsroot=":pserver:anonymous@pcc.ludd.ltu.se:/cvsroot"
_cvsmod_lib="pcc-libs"
_cvsmod_bin="pcc"

build() {
#some build environment stuff defined
  CC=pcc export CC
  CFLAGS="-xdce -xssa -O -static" export CFLAGS

  cd "$srcdir"

  msg "Building libraries"
  msg "Connecting to CVS server...."
  if [ -d $_cvsmod_lib/CVS ]; then
    cd $_cvsmod_lib
    cvs -z3 update -d
  else
    cvs -z3 -d $_cvsroot co -D $pkgver -f $_cvsmod_lib
    cd $_cvsmod_lib
  fi

  msg "CVS checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_cvsmod_lib-build"
  cp -ar "$srcdir/$_cvsmod_lib" "$srcdir/$_cvsmod_lib-build"
  cd "$srcdir/$_cvsmod_lib-build"

  ./configure --prefix=/usr || return 1
  make all || return 1
  make DESTDIR=$pkgdir install || return 1

#setting up new build environment variables
  export LIBOBJS="$pkgdir/usr/lib/pcc/$arch-unknown-linux-gnu/$pkgver/lib"
  export CC_FOR_BUILD=$CC

  msg "Building PCC"
  cd "$srcdir"

  msg "Connecting to CVS server...."
  if [ -d $_cvsmod_bin/CVS ]; then
    cd $_cvsmod_bin
    cvs -z3 update -d
  else
    cvs -z3 -d $_cvsroot co -D $pkgver -f $_cvsmod_bin
    cd $_cvsmod_bin
  fi

  msg "CVS checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_cvsmod_bin-build"
  cp -ar "$srcdir/$_cvsmod_bin" "$srcdir/$_cvsmod_bin-build"
  cd "$srcdir/$_cvsmod_bin-build"

  ./configure --prefix=/usr --libexecdir=/usr/lib/pcc/ || return 1

  CC="pcc -I $pkgdir/usr/lib/pcc/$arch-unknown-linux-gnu/$pkgver/include -L $pkgdir/usr/lib/pcc/$arch-unknown-linux-gnu/$pkgver/lib"
  export CC
  make || return 1

  make DESTDIR=$pkgdir install || return 1
  cd "$pkgdir/usr/share/man/man1"

  mv ${pkgdir}/usr/share/man/man1/cpp.1 ${pkgdir}/usr/share/man/man1/cpp.1pcc
}
