# Contributor: Jiri Prochazka <ojirio@gmail.com>
pkgname=libgig-svn
pkgver=2266
pkgrel=1
pkgdesc="Gigasampler file loader library"
arch=('i686' 'x86_64')
options=('')
url="http://www.linuxsampler.org/"
license=('GPL')
depends=('gcc' 'libsndfile>=1.0.2' 'libtool')
makedepends=('subversion' 'automake>=1.5' 'autoconf')
conflicts=('libgig' 'libgig-cvs')
provides=('libgig' 'libgig-cvs')

source=()
md5sums=()

_svntrunk=(https://svn.linuxsampler.org/svn/libgig/trunk)

build() {
  if [ -d $srcdir/.svn ]
  then
      svn up $srcdir
  else
      svn co $_svntrunk $srcdir
  fi

  export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/local/lib/pkgconfig

  make -f Makefile.cvs
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1

}

