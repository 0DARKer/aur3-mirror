# Contributor: Jason Pierce <`echo 'moc tod liamg ta nosaj tod ecreip' | rev`>
pkgname=dabo
pkgver=0.9.2
pkgrel=1
pkgdesc="3-tier Application Framework in Python"
arch=('any')
url="http://dabodev.com/"
license=('MIT')
depends=('python' 'wxpython')
makedepends=('setuptools>=0.6c9')
optdepends=('python-reportlab:Reporting features' 'python-opengl:Needed for dGLWindow class' \
	'python-pysqlite:SQLite backend' 'mysql-python:MySQL backend' \
	'python-kinterbasdb:Firebird backend' 'python-psycopg2:PostgreSQL backend')
backup=()
options=()
install=
source=(http://cdn.cloudfiles.mosso.com/c118811/dabo/dabo-${pkgver}-mac-nix.tar.gz)
md5sums=('5732f25b28f798b1bbbb2dc3008e046f')

build() {
	cd "$srcdir/$pkgname"

	mkdir -p $pkgdir/usr/share/licenses/dabo

	yes | python setup.py install --root="$pkgdir" --install-purelib="/usr/lib/python2.6/site-packages/" \
		--install-platlib="/usr/lib/python2.6/site-packages/" --install-data="/usr/lib/python2.6/site-packages/" || return 1

	install -m644 LICENSE.TXT $pkgdir/usr/share/licenses/dabo
}
