# Maintainer: XZS <d.f.fischer at web dot de>
pkgname=firefox-theme-deepdark
pkgver=10.3.8
pkgrel=1
pkgdesc='Smooth dark theme for Firefox'
url='https://addons.mozilla.org/en-us/firefox/addon/ft-deepdark/'
arch=('any')
license=('custom:noncommercial')
depends=('firefox')
source=("https://addons.mozilla.org/firefox/downloads/file/262674/ft_deepdark-${pkgver}-fx-linux.xpi")
md5sums=('a3e33b4ac334ac4f4b90540f16eb9938')

build() {
  cd "$srcdir"
  [[ -d $pkgname-extract ]] || mkdir $pkgname-extract
  unzip -q -d $pkgname-extract ft_deepdark-${pkgver}-fx-linux.xpi
}

package() {
  cd "$srcdir/$pkgname-extract"
  local emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf)
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/$emid
  install -d $dstdir
  mv * $dstdir
}
