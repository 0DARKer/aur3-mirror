#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=rabbit_tree
pkgver=2012.9
pkgrel=1
pkgdesc='Radix bit tries for implementing associative arrays and sets.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/rabbit_tree"
makedepends=(cmake doxygen)
source=(
  http://xyne.archlinux.ca/projects/rabbit_tree/archives/rabbit_tree-2012.9.tar.xz
  http://xyne.archlinux.ca/projects/rabbit_tree/archives/rabbit_tree-2012.9.tar.xz.sig
)
sha512sums=(
  ff3d1a354b4fa6127e2fbb190a9d8ade2612ccdc91ae88c6ff7c071e299de1a53ed4647cc9b35cf83f4456963baaba30d39c9fc0d5af2a8fd8f3d600ac0a132e
  495aeba82869d54524650784cf23c08ef1d1b60ac08c6e90b8dcece4bbe404336d3406ac3cebb79c937b6a197e386d7c15497593723377aef514e3613a9a3ec9
)
md5sums=(
  c7190fea1a1706f7c667f0fc3a786045
  4bcf543829af7046e0a34099e307f933
)

build ()
{
  mkdir -p "$srcdir/build"
  cd -- "$srcdir/build"
  cmake ../"$pkgname-$pkgver" -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package()
{
  cd -- "$srcdir/build"
  make install DESTDIR="$pkgdir"
}

