#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=rabbit_tree
pkgver=2013.2
pkgrel=1
pkgdesc='Radix bit tries for implementing associative arrays and sets in C.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/rabbit_tree"
makedepends=(cmake doxygen graphviz)
source=(
  http://xyne.archlinux.ca/projects/rabbit_tree/src/rabbit_tree-2013.2.tar.xz
  http://xyne.archlinux.ca/projects/rabbit_tree/src/rabbit_tree-2013.2.tar.xz.sig
)
sha512sums=(
  df5f28c0e94ac832a4385a3cc63ac8ea18e747e2da229c4abcf3178028d07fa0879be87dd165f29a5ff356a1791ec7342b29624d8ecbff87e9bac05fc62e0c79
  eb7b95f30fa7e3daef532147e460a74762339c6525f31a076aafb27f5c79b741aab4e6dffb738091d2296907f5dbb372a1bd61cd041771c04bd16ae780f28197
)
md5sums=(
  915bf6c3d14799b222b86d73d069cfdc
  ceb2f523053b1073b1e2e26b42674a85
)

build ()
{
  mkdir -p "$srcdir/build"
  cd -- "$srcdir/build"
  cmake ../"$pkgname-$pkgver" -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package()
{
  cd -- "$srcdir/build"
  make install DESTDIR="$pkgdir"
}

