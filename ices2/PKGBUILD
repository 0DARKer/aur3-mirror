# Maintainer: Robert Knauer <robert@privatdemail.net>
# Contributor: bl4ckb1t <bl4ckb1t@gmail.com>
pkgname=ices2
_srcname=ices
pkgver=2.0.2
pkgrel=1
pkgdesc="source client for broadcasting in Ogg Vorbis format to an icecast2 server." 
arch=('i686' 'x86_64')
url="http://icecast.org/ices.php"
license=('GPL')
depends=('libogg' 'libvorbis' 'libxml2' 'libshout')
source=(http://downloads.us.xiph.org/releases/ices/${_srcname}-${pkgver}.tar.gz)
md5sums=('d2f53320ebc7b468d0e0f8a3d2b70883')

build() {
  cd ${srcdir}/${_srcname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
