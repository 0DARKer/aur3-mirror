# Contributor: bl4ckb1t <bl4ckb1t@gmail.com>
pkgname=ices2
_srcname=ices
pkgver=2.0.1
pkgrel=1
pkgdesc="source client for broadcasting in Ogg Vorbis format to an icecast2 server." 
arch=('i686' 'x86_64')
url="http://icecast.org/ices.php"
license=('GPL')
depends=('libogg' 'libvorbis' 'libxml2' 'libshout')
source=(http://downloads.us.xiph.org/releases/ices/$_srcname-$pkgver.tar.gz)
md5sums=('0d95ac34d59fed337028d5e7771076d8')

build() {
  cd $startdir/src/$_srcname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -Dm644 COPYING ${startdir}/pkg/usr/share/licenses/${pkgname}/COPYING
}
