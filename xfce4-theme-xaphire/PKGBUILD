# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=xfce4-theme-xaphire
pkgver=0.1
pkgrel=3
pkgdesc="Xaphire theme ported from WindowBlinds"
arch=('any')
url="http://xfce-look.org/content/show.php/Xaphire?content=88496"
license=('GPL')
source=("http://daniel.gorgones.net/xfce/themes/Xaphire.tar.gz")
md5sums=('1196e90e558033b127bfb175f07ae9a1')

package() {
 mkdir -p "$pkgdir/usr/share/themes"
 cp -R "$srcdir/Xaphire" "$pkgdir/usr/share/themes"
 chmod 755 "$pkgdir"/usr/share/themes/{Xaphire,Xaphire/xfwm4}
 chmod 644 "$pkgdir"/usr/share/themes/Xaphire/xfwm4/*
}
