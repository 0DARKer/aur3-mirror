pkgname=zopflipng-git
_gitname=zopfli
pkgver=zopfli.1.0.0.r4.gc54dc20
pkgrel=1
pkgdesc="A PNG optimizer by the zopfli team"
arch=('i686' 'x86_64' 'ARM')
url="https://code.google.com/p/zopfli/"
license=('Apache')
source=('git+https://code.google.com/p/zopfli/')
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$_gitname"
	git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "$srcdir/$_gitname"
	make zopflipng 
}

package() {
	cd "$srcdir/$_gitname"
	install -m755 -D zopflipng $pkgdir/usr/bin/zopflipng
}
