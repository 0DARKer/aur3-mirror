_realname=Set-IntSpan
pkgver=1.13
pkgrel=1
pkgdesc="Manages sets of integers, newsrc style"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/Set-IntSpan/"
license=('PerlArtistic')
source=('http://search.cpan.org/CPAN/authors/id/S/SW/SWMCD/Set-IntSpan-1.13.tar.gz')
md5sums=('c1633328e9bfece889abe0949992ce04')
