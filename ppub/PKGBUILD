# Maintainer: Thanasis Georgiou <sakisds@gmx.com>
pkgname=ppub
pkgver=20111027
pkgrel=1
pkgdesc="A simple ePub reader made with pygtk."
arch=('any')
url="https://github.com/sakisds/pPub"
license=('GPL')
depends=('python2' 'unzip' 'gtk3' 'gobject-introspection' 'libwebkit3' 'python2-gobject')
makedepends=('git')

_gitroot="git://github.com/sakisds/pPub.git"
_gitname="pPub"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  mkdir -p $pkgdir/usr/bin
  mv ppub.py $pkgdir/usr/bin/ppub
  mkdir -p $pkgdir/usr/share/ppub
  mv night.css $pkgdir/usr/share/ppub/night.css
  mv README $pkgdir/usr/share/ppub/README
  mv COPYING $pkgdir/usr/share/ppub/COPYING
}

