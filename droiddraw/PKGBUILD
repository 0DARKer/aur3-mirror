# Maintainer: Sebastian Chlan <sebastian.chlan@gmail.com>
# Contributor: Sebastian Chlan <sebastian.chlan@gmail.com>
pkgname=droiddraw
pkgver=r1b17
pkgrel=1
pkgdesc="Provides a visual interface editor for the operating system."
arch=(i686 x86_64)
url="http://www.droiddraw.org/"
license=('GPL')
depends=('java-runtime')
source=(http://droiddraw.googlecode.com/files/droiddraw-${pkgver}.tgz)
md5sums=('74f7a4a92572abe6c37b87ddf27be700')



build() {
 install -d ${pkgdir}/opt/droiddraw/
 msg 1
 install -d ${pkgdir}/usr/bin
 msg 2
 install -D -m755 "${srcdir}/droiddraw-${pkgver}/droiddraw.jar" "${pkgdir}/opt/droiddraw/droiddraw.jar"
 msg 3
 install -D -m755 "${srcdir}/droiddraw-${pkgver}/droiddraw.sh" "${pkgdir}/opt/droiddraw/droiddraw.sh"

 echo "#!/bin/bash" > ${pkgdir}/opt/droiddraw/droiddraw.sh
 echo "java -jar /opt/droiddraw/droiddraw.jar &" >> ${pkgdir}/opt/droiddraw/droiddraw.sh
 ln -s /opt/droiddraw/droiddraw.sh ${pkgdir}/usr/bin/droiddraw
 msg "Installed" 
}
