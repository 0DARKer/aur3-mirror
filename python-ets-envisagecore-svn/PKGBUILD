# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-envisagecore-svn
pkgver=25958
pkgrel=1
pkgdesc="Extensible Application Framework,"
arch=('any')
url="http://code.enthought.com/projects/envisage"
license=('BSD')
depends=('python2' 'python-ets-enthoughtbase-svn'
         'python-ets-traits-svn' 'python-ets-apptools-svn')
makedepends=('subversion' 'python2-distribute')
conflicts=('python-enthought-utils')
options=(!emptydirs)

_svnmod=EnvisageCore
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

