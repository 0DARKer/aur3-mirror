# Contributor: Vitaliy Berdinskikh ur6lad[at]i.ua

pkgname=parboiled
pkgver=0.9.9.0
pkgrel=1
pkgdesc="A pure Java library providing for lightweight and easy-to-use, yet powerful and elegant parsing of arbitrary input text based on Parsing expression grammars (PEGs)"
arch=('i686' 'x86_64')
url="http://parboiled.org/"
depends=('java-runtime')
license=('Apache')
source=(http://github.com/downloads/sirthias/$pkgname/${pkgname}4j-${pkgver}.jar
		setClasspath.sh)

package() {
	mkdir -p $pkgdir/usr/share/java/$pkgname

	cd $srcdir
	install -m644 ${pkgname}4j-${pkgver}.jar $pkgdir/usr/share/java/$pkgname
	ln -sf ${pkgname}4j-${pkgver}.jar $pkgdir/usr/share/java/$pkgname/${pkgname}4j.jar
	install -m644 setClasspath.sh $pkgdir/usr/share/java/$pkgname
}

md5sums=('234ebd94accbf516a1b9d9c80afc909f'
         'ee728d663044694d9e060ee2b4a06d6e')
sha256sums=('85c53e62ab8182e3dc3e2d6da4c2904dba7180acacdb3813e7b594c0adb9ba82'
            'c75bcc61f63b2585e6983b14354e96804b1541025cdce4cec383eaf3a06f40f6')
