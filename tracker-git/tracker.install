post_install() {
  which xdg-icon-resource 1>/dev/null 2>/dev/null && xdg-icon-resource forceupdate || true
  glib-compile-schemas usr/share/glib-2.0/schemas
}

post_upgrade() {
  post_install $1
}

post_remove() {
  which xdg-icon-resource 1>/dev/null 2>/dev/null && xdg-icon-resource forceupdate || true
  glib-compile-schemas usr/share/glib-2.0/schemas
}
