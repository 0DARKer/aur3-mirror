# Contributor: nsf
# Maintainer: Alexander Zubkov <green@msu.ru>

pkgname=ttf-paratype
pkgver=20101228
pkgrel=3
pkgdesc='Font family by ParaType, sans and serif, extended cyrillic and latin, OFL license.'
arch=('any')
url='http://www.paratype.com/public/'
license=('custom')
depends=('fontconfig' 'xorg-fonts-encodings')
makedepends=()
install=pkg.install
source=(http://www.fontstock.com/public/PTSerifOFL.zip
        http://www.fontstock.com/public/PTSansOFL.zip)
md5sums=(4a7c2f10185e930979209db832716bb7
         93b4e9d4099c7dbf043db92c5c43e40f)

build() {
    cd "$srcdir"

    mkdir -p "$pkgdir/usr/share/licenses/$pkgname/"
    install -m 644 PTSansPTSerifOFL.txt "$pkgdir/usr/share/licenses/$pkgname/"

    mkdir -p "$pkgdir/usr/share/fonts/TTF/"
    install -m 644 *.ttf "$pkgdir/usr/share/fonts/TTF/"
}
