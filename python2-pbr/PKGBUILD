# Maintainer: Limao Luo <luolimao+AUR@gmail.com>

pkgname=python2-pbr
pkgver=0.6
pkgrel=1
pkgdesc="Python bindings to the OpenStack Identity API (Keystone)"
arch=(any)
url=https://pypi.python.org/pypi/pbr
license=(Apache)
depends=(python2)
makedepends=(python2-setuptools)
source=(http://pypi.python.org/packages/source/p/${pkgname#*-}/${pkgname#*-}-$pkgver.tar.gz)
sha256sums=('d82d78422625a78f89fb341fb0243320b09c18caac6e7770105ba62dd7d8b445')
sha512sums=('1c7cac61abd5971c75f8ce1bbd14aab92469284b41d6bf3c5d0ac5856e70b89947f867dfa1ea1568ed3e4cd5b23219f3c8945e2d4ae6151d2c5083d78eaa906a')

build() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py build
}

package() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py install --prefix=/usr --root="$pkgdir"
    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
