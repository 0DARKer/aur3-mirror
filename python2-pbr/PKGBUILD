# Maintainer: Limao Luo <luolimao+AUR@gmail.com>

pkgname=python2-pbr
pkgver=0.5.16
pkgrel=1
pkgdesc="Python bindings to the OpenStack Identity API (Keystone)"
arch=(any)
url=https://pypi.python.org/pypi/pbr
license=()
depends=(python2)
makedepends=(python2-distribute)
source=(http://pypi.python.org/packages/source/p/${pkgname#*-}/${pkgname#*-}-$pkgver.tar.gz)
sha256sums=('5111de23b4620a53f639a8da4b34075344315d121e2d43ae9b567db4870018bd')
sha512sums=('01afe246779dfe3dd853410fb86e8a7131186514b393be399af8dca8289bebb86027745f6167d2be6778e9e416b784dd702ae25a5d66ee5e5b7c8ff7c4e48723')

build() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py build
}

package() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py install --prefix=/usr --root="$pkgdir"
    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
