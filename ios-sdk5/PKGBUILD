# Maintainer: yetist <yetist@gmail.com>
pkgname=ios-sdk5
pkgver=5.0
pkgrel=2
pkgdesc="Crosscompile filesystem include all libraries and headers needed to develop a iOS 5.0 app."
arch=('i686' 'x86_64')
url="http://code.google.com/p/ios-toolchain-based-on-clang-for-linux"
license=('GPL')
depends=('ios-toolchain' 'clang=3.1-6')
optdepends=('ldid')
install=
source=(http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/iPhoneOS5.0.sdk.tar.xz
http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/libarclite_iphoneos.a.tar.gz
ios5-clang
ios5-clang++)
md5sums=('5206cb8500fdfcc88e70bf8899ead998'
         'e414c121da255f6233d841dcb9dae1c0'
         'e1475d35bf3b0758746b337c2548c56f'
         '687080d4156d7b7be899e575941d3199')

build() {
  echo "Building..."
}

package() {
  [ -d $pkgdir/usr/share ] || mkdir -p $pkgdir/usr/share
  mv $srcdir/iPhoneOS5.0.sdk $pkgdir/usr/share
  ln -sf crt1.o $pkgdir/usr/share/iPhoneOS5.0.sdk/usr/lib/crt1.3.1.o

  install -Dm644 $srcdir/libarclite_iphoneos.a $pkgdir/usr/share/iPhoneOS5.0.sdk/usr/lib/arc/libarclite_iphoneos.a

  install -Dm755 $srcdir/ios5-clang $pkgdir/usr/bin/ios5-clang
  install -Dm755 $srcdir/ios5-clang++ $pkgdir/usr/bin/ios5-clang++
  ln -sf ios5-clang "${pkgdir}/usr/bin/ios-clang"
  ln -sf ios5-clang++ "${pkgdir}/usr/bin/ios-clang++"
}

# vim:set ts=2 sw=2 et:
