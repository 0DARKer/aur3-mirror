# Maintainer: yetist <yetist@gmail.com>
pkgname=ios-sdk5
pkgver=5.0
pkgrel=1
pkgdesc="Crosscompile filesystem include all libraries and headers needed to develop a iOS 5.0 app."
arch=('i686' 'x86_64')
url="http://code.google.com/p/ios-toolchain-based-on-clang-for-linux"
license=('GPL')
depends=('ios-toolchain')
optdepends=('ldid')
install=
source=(http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/sys50.tar.xz
http://ios-toolchain-based-on-clang-for-linux.googlecode.com/files/libarclite_iphoneos.a.tar.gz
ios5-clang
ios5-clang++
ios-sdk5.sh)
sha256sums=('8bd95588b7f3285994e4e2daa288949f08a51d9d536f5d112121adeb53eefeef'
            'f26ab9070aa91e1a663ed40c1bd81d6146c33d280298b2867895b9122871252c'
            '9bae3595e43540d0c739cee796c66e8704ea507ec2883b5992bcee6debce2c0d'
            '62fd1158674a91fcdaca6b73060d6e8324b63829e1eee0b378552aaf239127cc'
            '04fd933832cc236d29d45be6969fbe2203900bd3b324c56643713059221ad5ee')

build() {
  echo "Building..."
}

package() {
  [ -d $pkgdir/opt/ios ] || mkdir -p $pkgdir/opt/ios
  mv $srcdir/sys $pkgdir/opt/ios/sdk5
  install -Dm644 $srcdir/libarclite_iphoneos.a $pkgdir/opt/ios/sdk5/usr/lib/arc/libarclite_iphoneos.a
  install -Dm755 $srcdir/ios5-clang $pkgdir/usr/bin/ios5-clang
  install -Dm755 $srcdir/ios5-clang++ $pkgdir/usr/bin/ios5-clang++
  install -Dm755 $srcdir/ios-sdk5.sh $pkgdir/etc/profile.d/ios-sdk5.sh
}

# vim:set ts=2 sw=2 et:
