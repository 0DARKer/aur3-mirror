# Maintainer: Laszlo Papp <djszapi2 at gmail com>
pkgname=vim-xpt
pkgver=0.3.9.93
_scriptid=11661
pkgrel=1
pkgdesc="XP's Snippet Template engine for vim"
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=2611"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.tar.gz::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('e564422594e443e5929e40cafed0c42a'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/{ftdetect,ftplugin,doc,plugin,syntax}
    for x in "syntax" "plugin" "ftdetect"; do install -Dm755 ${srcdir}/xpt/$x/* ${pkgdir}/usr/share/vim/$x/ || return 1; done
    for x in "doc"; do install -Dm644 ${srcdir}/xpt/$x/* ${pkgdir}/usr/share/vim/$x/ || return 1; done
    cp -Rf ${srcdir}/xpt/ftplugin/* ${pkgdir}/usr/share/vim/ftplugin/ || return 1
    install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt || return 1
}

