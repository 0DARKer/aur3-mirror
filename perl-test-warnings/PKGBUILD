pkgdesc="Test for warnings and the lack of them"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-test-deep>=0' 'perl-test-tester>=0.108')
makedepends=()
url='http://search.cpan.org/dist/Test-Warnings'
source=('http://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Test-Warnings-0.013.tar.gz')
md5sums=('417033144b2fc373830a3547e9f96fab')
