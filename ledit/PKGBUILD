#Maintainer: Nathan O <ndowens.aur at gmail dot com>
pkgname=ledit
pkgver=2.02.1
pkgrel=1
pkgdesc="Line editor to use emacs control characters. Written in Objective Caml (OCaml)"
arch=('i686' 'x86_64')
url="http://cristal.inria.fr/~ddr/ledit/"
license=('BSD')
depends=('ncurses')
makedepends=('ocaml' 'camlp5')
source=("http://cristal.inria.fr/~ddr/ledit/distrib/src/${pkgname}-${pkgver}.tgz" 'LICENSE')
md5sums=('f8d51a92bfe78d6e5bd5a94a131c96f8'
         '18d9cddaeb69df9a60b5b14f03215eff')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make all 
  }
package()
{
  cd ${srcdir}/${pkgname}-${pkgver}
  install -d ${pkgdir}/usr/{bin,share/{licenses/${pkgname},man}}
  make BINDIR=${pkgdir}/usr/bin MANDIR=${pkgdir}/usr/share/man install 
  install -Dm 644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
