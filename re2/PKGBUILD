pkgname=re2
pkgver=20140111
pkgrel=1
pkgdesc="efficient, principled regular expression library"
url="http://code.google.com/p/re2/"
arch=('i686' 'x86_64')
license=('BSD')
source=("https://re2.googlecode.com/files/${pkgname}-${pkgver}.tgz")
sha1sums=('d51b3c2e870291070a1bcad8e5b471ae83e1f8df')

prepare() {
  rm -fr build
  cp -R "${pkgname}" build
}

build() {
  cd build
  make prefix=/usr
}

# check() {
#   cd build
#   make static-test
# }

package() {
  cd build
  make prefix=/usr DESTDIR="${pkgdir}" install
}