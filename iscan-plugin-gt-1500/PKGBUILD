# Maintainer: St√©phane Brunet <stephane at stephanebrunet dot net>
pkgname=iscan-plugin-gt-1500
pkgver=2.1.1_2
pkgrel=1
pkgdesc="iscan plugin for Epson GT-1500 scanner."
arch=('i686' 'x86_64')
url="http://www.avasys.jp/english/linux_e/"
license=('custom')
depends=('iscan' 'iscan-data')
makedepends=('deb2targz')
install=gt-1500.install
source=(http://linux.avasys.jp/drivers/scanner-plugins/GT-1500/iscan-plugin-gt-1500_${pkgver//_/-}_i386.deb)
[[ $CARCH == "x86_64" ]] && \
  source=(http://linux.avasys.jp/drivers/scanner-plugins/GT-1500/iscan-plugin-gt-1500_${pkgver//_/-}_amd64.deb)
md5sums=('0fa3a1b23c6a7c48ba18f1d82c0b6870')
[[ $CARCH == "x86_64" ]] && md5sums=('51a10ce1b22950c67b4f58c9e7f37553')
build() {
  cd "$startdir"
  deb2targz $(basename ${source[0]})
  tar -xf $(basename ${source[0]//.deb/.tar.gz})
  mv usr "$pkgdir"
  mkdir $pkgdir/usr/share/licences
  mv $pkgdir/usr/share/doc/iscan-plugin-gt-1500 $pkgdir/usr/share/licences/
  rmdir $pkgdir/usr/share/doc
}


