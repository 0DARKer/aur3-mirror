# Maintainer: Bart≈Çomiej Piotrowski <barthalion@gmail.com>

pkgname=vba-m
pkgver=1.8.0.1042
pkgrel=1
pkgdesc="A VBA fork that focuses on consolidating existing ports and improving VBA in general"
arch=(i686 x86_64)
url="http://vba-m.ngemu.com"
license=('GPL')
groups=()
depends=('gtkmm' 'sdl' 'glibmm' 'libpng' 'zlib' 'cairo' 'mesa' 'gtkglext' 'gtkglextmm' 'libxv' 'hicolor-icon-theme')
makedepends=('cmake' 'pkg-config' 'nasm')
source=("http://downloads.sourceforge.net/sourceforge/vbam/VBA-M svn r1042/${pkgname/-/}-$pkgver-src.tar.gz")
install='vba-m.install'
md5sums=('424d31f2bec2ce03ca9c2d8dce3a7a57')

build() {
  cd "$srcdir/vbam-$pkgver"
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DDATA_INSTALL_DIR:PATH=share/vbam/gtk -DENABLE_WX=OFF
  make
}

package() {
  cd "$srcdir/vbam-$pkgver"
  make DESTDIR=$pkgdir install
}
