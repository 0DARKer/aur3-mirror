#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

PID=`cat /var/run/chipcardd4.pid 2>/dev/null`
case "$1" in
  start)
    stat_busy "Starting chipcardd4"
    if [ -z "$PID" ]; then 
       /usr/sbin/chipcardd4
    fi
    if [ ! -z "$PID" -o $? -gt 0 ]; then
      stat_fail
    else
      add_daemon chipcardd4
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping chipcardd4"
    [ ! -z "$PID" ]  && kill $PID &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon chipcardd4
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"  
esac
