post_install() {
  echo -n "Updating font cache... "
  fc-cache -fs >/dev/null
  mkfontscale /usr/share/fonts/TTF /usr/share/fonts/Type1 /usr/share/fonts/misc > /dev/null 2>&1
  mkfontdir /usr/share/fonts/TTF /usr/share/fonts/Type1 /usr/share/fonts/misc > /dev/null 2>&1
  echo "done"
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}
