post_install() {
  echo ">>" Add the following to your .emacs:
  echo ">>   (load \"dictionary-init\")"
  echo ">>" Useful keybindings:
  echo ">>   (global-set-key \"\\C-cs\" 'dictionary-search)"
  echo ">>   (global-set-key \"\\C-cm\" 'dictionary-match-words)"
}

op=$1
shift
[ "$(type -t "$op")" = "function" ] && $op "$@"

