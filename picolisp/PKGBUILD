# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer:  perlawk
pkgname=picolisp
_pkgname=picoLisp
pkgver=3.0.4
pkgrel=1 
pkgdesc='If some programming languages claim to be the "Swiss Army Knife of Programming", then PicoLisp may well be called the "Scalpel of Programming": Sharp, accurate, small and lightweight, but also dangerous in the hand of the inexperienced.'
url="http://www.picolisp.org"
arch=('x86_64' 'i686')
license=('GPL')
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=( http://www.software-lab.de/$_pkgname-$pkgver.tgz)
md5sums=('02dcb487eb276939cea827b7a1384ce9')
build() {
  if [[ `arch` == "x86_64" ]]; then
  	cd $startdir/src/$_pkgname-$pkgver/src64
	else
  	cd $startdir/src/$_pkgname-$pkgver/src32
	fi
  make || return 1
  cd ..

	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/lib
	mkdir -p $pkgdir/usr/share/$_pkgname/lib
	install -m755 bin/* $pkgdir/usr/bin
	cp -a app doc64 games opt rcsim simul misc loc img dbg* lib* ext* $pkgdir/usr/share/$_pkgname
}
