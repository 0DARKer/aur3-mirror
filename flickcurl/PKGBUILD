# Maintainer: Joeny Ang <ang(dot)joeny(at)gmail(dot)com>

pkgname=flickcurl
pkgver=1.20
pkgrel=1
pkgdesc="C library for the Flickr API"
url="http://librdf.org/flickcurl/"
arch=('i686' 'x86_64')
license=('LGPL2.1' 'GPL2' 'Apache2.0')
depends=('curl>=7.10.0' 'libxml2>=2.6.8' 'raptor>=1.4.0')
source=(http://download.dajobe.org/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('a2982d529252c82b1670e8d2c11fec0c')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
