# Contributer: Jonathan Frazier <eyeswide@gmail.com>

pkgname=mnemosyne
pkgver=1.2.2
pkgrel=4
pkgdesc="A pyqt flash-card program with a sophisticated card review algorithm"
url="http://mnemosyne-proj.org/"
license="GPL"
arch=('i686' 'x86_64')
depends=('pyqt3' 'python-pygame' 'pyxml' 'python-imaging')
makedepends=('setuptools')
md5sums=('a309a6f032fcca104851e0dcaeae9dd4')
install=mnemosyne.install
source=(http://downloads.sourceforge.net/sourceforge/mnemosyne-proj/${pkgname}-${pkgver}.tgz)


build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py install --root=${pkgdir}
}
