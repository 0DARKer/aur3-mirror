# Maintainer: Troy Cox <troy.cox@rackspace.com>

pkgname=python2-novaclient
pkgver=2.9.0
pkgrel=1
pkgdesc="Client library for OpenStack Nova API."
arch=('i686' 'x86_64')
url="https://github.com/openstack/python-novaclient"
license=('GPL')
depends=('python2' 'python2-distribute' 'python2-prettytable' 'python2-httplib2' 'python2-simplejson' 'python2-iso8601')
makedepends=('python2')
provides=("$pkgname=$pkgver")
source=(http://pypi.python.org/packages/source/p/python-novaclient/python-novaclient-$pkgver.tar.gz)
md5sums=('0d6caeb963c7c24ac26bce1a429a94ff')

build() {
	cd "$srcdir/python-novaclient-$pkgver"
	python2 setup.py build || return 1
	python2 setup.py install --root=${pkgdir} || return 1
}
