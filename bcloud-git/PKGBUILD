# Contributor: wxg <wxg4dev@gmail.com>

pkgname=bcloud-git
pkgver=20140509
pkgrel=1
pkgdesc="百度网盘的linux桌面客户端"
arch=('i686' 'x86_64')
url="https://github.com/LiuLang/bcloud"
license=('GPL')
makedepends=('git')
depends=('python' 'python-keyring' 'python-dbus' 'gnome-icon-theme-symbolic')
source=("${pkgname}"::'git+https://github.com/LiuLang/bcloud.git')
md5sums=('SKIP')

pkgver() {
  cd  "$srcdir/$pkgname/"
  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

package() {
  cd  "$srcdir/$pkgname/"
  python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}
