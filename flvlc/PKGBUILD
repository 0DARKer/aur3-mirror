# Maintainer : Daniel T. Borelli < daltomi@aol.com >
# Contributor: sekret
pkgname=flvlc
pkgver=1.5.3
pkgrel=1
pkgdesc='FLTK media player by libvlc'
arch=('i686' 'x86_64')
url="http://sourceforge.net/p/flvlc/"
license=('GPL3')
depends=('fltk' 'vlc')
makedepends=('git' 'cmake')
source=("http://sourceforge.net/projects/flvlc/files/release/${pkgname}-${pkgver}.zip")
options=('!buildflags')
md5sums=('32c9277f726ded17f91ad2dffc06beb6')

prepare() {
 mkdir -p "build"
 cd "build"
 cmake ..
}

build() {
 cd "build"
 make
}

package() {
 cd "build"
 install -Dm0755 flvlc "$pkgdir/usr/bin/flvlc"
}

