# Contributor: sekret
# Contributor: flu

pkgname=flvlc
pkgver=1.7
pkgrel=1
pkgdesc='FLTK media player by libvlc'
arch=('i686' 'x86_64')
url="http://sourceforge.net/p/flvlc/"
license=('GPL3')
depends=('fltk' 'vlc')
makedepends=('git' 'cmake')
options=('!buildflags')
source=("http://sourceforge.net/projects/flvlc/files/release/${pkgname}-${pkgver}.zip")
md5sums=('9e55ae2bc528e508aaea466a52e5f0e1')


prepare() {
 cd "${srcdir}"
 cmake .
}

build() {
 cd "${srcdir}"
 make
}

package() {
 cd "${srcdir}"
 install -Dm0755 flvlc "${pkgdir}/usr/bin/flvlc"
}

