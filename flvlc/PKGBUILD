# Maintainer : Daniel T. Borelli < daltomi@aol.com >
pkgname=flvlc
pkgver=0.27
pkgrel=1
pkgdesc='FLTK media player by libvlc'
arch=('i686' 'x86_64')
url="http://sourceforge.net/p/flvlc/"
license=('GPL3')
depends=('fltk' 'vlc')
makedepends=('git' 'cmake')
source=("$pkgname::git+git://git.code.sf.net/p/flvlc/code")
md5sums=('SKIP')

pkgver() {
 cd "$pkgname"
 echo "0.$(git rev-list --count master)"
}

prepare() {
 mkdir -p "$pkgname/build"
 cd "$pkgname/build"
 cmake ..
}

build() {
 cd "$pkgname/build"
 make
}

package() {
 cd "$pkgname/build"
 install -Dm0755 flvlc "$pkgdir/usr/bin/flvlc"
}

# vim:set ts=2 sw=2 et:
