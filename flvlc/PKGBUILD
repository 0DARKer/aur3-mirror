# Maintainer : Daniel T. Borelli < daltomi@aol.com >
# Contributor: sekret
pkgname=flvlc
pkgver=1.6.1
pkgrel=1
pkgdesc='FLTK media player by libvlc'
arch=('i686' 'x86_64')
url="http://sourceforge.net/p/flvlc/"
license=('GPL3')
depends=('fltk' 'vlc')
makedepends=('git' 'cmake')
options=('!buildflags')
source=("https://content.wuala.com/contents/daltomi/prog/flvlc/flvlc-${pkgver}.zip")
md5sums=('912f13242d8bc7a0a861f5eb99ba1583')

prepare() {
 mkdir -p "build"
 cd "build"
 cmake ..
}

build() {
 cd "build"
 make
}

package() {
 cd "build"
 install -Dm0755 flvlc "$pkgdir/usr/bin/flvlc"
}

# vim:set ts=2 sw=2 et:
