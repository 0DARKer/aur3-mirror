# Contributor: sekret
# Contributor: flu

pkgname=flvlc
pkgver=1.8.1
pkgrel=1
pkgdesc='FLTK media player by libvlc'
arch=('i686' 'x86_64')
url="http://sourceforge.net/p/flvlc/"
license=('GPL3')
depends=('fltk' 'vlc')
makedepends=('git' 'cmake')
options=('!buildflags')
source=("http://sourceforge.net/projects/flvlc/files/release/${pkgname}-${pkgver}-src.zip")
md5sums=('6d3abc0381aba1c5d0cc37636e9f2ecd')

prepare() {
 cd "${srcdir}"
 cmake .
}

build() {
 cd "${srcdir}"
 make
}

package() {
 cd "${srcdir}"
 install -Dm0755 flvlc "${pkgdir}/usr/bin/flvlc"
}

# vim:set ts=2 sw=2 et:
