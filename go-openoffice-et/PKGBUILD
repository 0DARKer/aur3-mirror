build(){
cd ${srcdir}
for i in *.rpm
do rpmextract.sh $i
done

mkdir -p ${pkgdir}/usr/lib/${pkgname%%-et}
cp -R opt/openoffice.org{,3}/* ${pkgdir}/usr/lib/${pkgname%%-et}
}
