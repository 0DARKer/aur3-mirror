pkgname=go-openoffice-et
pkgver=3.2.1
pkgrel=1
_subver=3.2
_build=9505
_srcurl=http://go-oo.mirrorbrain.org/stable/linux-x86
pkgdesc="Go-OpenOffice Estonian language files and help"
arch=('i686' 'x86_64')
url="http://go-oo.org/discover/"
license=('LGPL')
depends=('go-openoffice>=3.2.1')
makedepends=('rpmextract')
[ "$CARCH" = "x86_64" ] && _arch=x86_64
[ "$CARCH" = "i686" ] && _arch=i586

source=(
  http://go-oo.mirrorbrain.org/stable/linux-$_arch/$pkgver/ooobasis$_subver-et{,-base,-binfilter,-calc,-draw,-impress,-math,-res,-writer,-help}-$pkgver-$_build.$_arch.rpm
  http://go-oo.mirrorbrain.org/stable/linux-$_arch/$pkgver/openoffice.org3-et-$pkgver-$_build.$_arch.rpm
)

