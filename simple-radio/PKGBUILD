pkgname=simple-radio
pkgver=45.ad17ea0d85ac
pkgrel=1
pkgdesc="Play radio streams with mplayer"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPLv3')
depends=('mplayer' 'libnotify' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme' 'libmp-control')
makedepends=('vala' 'mercurial')
source=(alphaos::hg+https://bitbucket.org/simargl/alphaos)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo "$(hg identify -n).$(hg identify -i)"
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
