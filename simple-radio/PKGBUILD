pkgname=simple-radio
pkgver=hg_latest
pkgrel=3
pkgdesc="Play radio streams with mplayer"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl/simple-radio"
license=('GPLv3')
depends=('mplayer' 'libnotify')
makedepends=('vala')
source=(https://bitbucket.org/simargl/$pkgname/get/tip.tar.gz)
md5sums=('SKIP')
options=(!strip)

package() {
  cd "$srcdir"/*-$pkgname-*
  make DESTDIR="$pkgdir/" install
}
