pkgname=simple-radio
pkgver=hg_latest
pkgrel=6
pkgdesc="Play radio streams with mplayer"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPLv3')
depends=('mplayer' 'libnotify' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('vala')
source=(https://bitbucket.org/simargl/alphaos/get/tip.tar.gz)
md5sums=('SKIP')
options=(!strip)
install=$pkgname.install

package() {
  cd "$srcdir"/*-alphaos-*/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
