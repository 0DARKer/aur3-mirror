pkgname=simple-radio
pkgver=73.4bf5931
pkgrel=1
pkgdesc="Play radio streams from your system tray. Program is written in Vala/GTK3."
arch=('i686' 'x86_64')
url="https://github.com/simargl/alphaos"
license=('GPL')
depends=('libnotify' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme' 'libmp-control' 'gtk3')
makedepends=('vala' 'git')
source=(alphaos::git+https://github.com/simargl/alphaos)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
