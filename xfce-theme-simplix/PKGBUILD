# Mantainer: defendor at riseup dot net

pkgname=xfce-theme-simplix
pkgver=1.0
pkgrel=1
pkgdesc="A very bright, simple but daily useable theme for Xfce"
arch=('any')
url="http://sixsixfive.deviantart.com/art/simpliX-346404452"
license=('GPL3')
depends=('gtk-engines' 'p7zip')
source=(http://fc09.deviantart.net/fs71/f/2014/044/f/a/simplix_by_sixsixfive-d5q8ndw.7z)
md5sums=('45e6ad2680fcc87a1c294f1304de6ea4')

package() {
	mkdir -p ${pkgdir}/usr/share/themes/
	cp -rv ${srcdir}/cp-to-themes-folder/* ${pkgdir}/usr/share/themes/
}