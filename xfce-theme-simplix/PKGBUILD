# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>
# Contributor: defendor <defendor at riseup dot net>

pkgname=xfce-theme-simplix
pkgver=r26.db3d2ac
pkgrel=1
pkgdesc="A very bright, simple but daily usable theme for Xfce."
arch=(
	"$CARCH"
)
url="http://sixsixfive.deviantart.com/art/simpliX-346404452"
license=(
	"custom"
	"CCPL:cc-by-4.0"
)

depends=(
	"gtk-engines"
	"gtk-engine-murrine"
)
optdepends=(
	"slim-theme-simplix: SLiM theme"
	"kdm-theme-simplix: KDM theme"
	"helvetica-font: Helvetica bitmap font"
)
makedepends=(
	"git"
)
provides=(
	"${pkgname}=${pkgver}"
)
conflicts=(
	"${pkgname}<=${pkgver}"
)
replaces=(
	"${pkgname}<=${pkgver}"
)

source=(
	"${pkgname}::git+https://github.com/sixsixfive/themes.git"
)
md5sums=(
	"SKIP"
)
sha512sums=(
	"SKIP"
)

pkgver() {
	cd ${srcdir}/${pkgname}
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

_themename=simpliX

package() {
	# Create base directories
	install -dm755 ${pkgdir}/usr/share/themes
	install -dm755 ${pkgdir}/usr/share/backgrounds/xfce
	install -dm755 ${pkgdir}/usr/share/licenses
	
	# Change the current working directory
	cd ${srcdir}/${pkgname}/${_themename}
	
	# Index, GTK 2.0, Window Manager and Motification theme
	install -dm755 ${pkgdir}/usr/share/themes/${_themename}
	cp -R ./{index.theme,gtk-2.0,xfwm4,xfce-notify-4.0} ${pkgdir}/usr/share/themes/${_themename}
	
	# GTK 3.0 theme (unsupported by the author)
	# See note at <https://github.com/sixsixfive/themes/tree/master/simpliX/Extras/GTK3>
	cp -R ./Extras/GTK3/GTK-3.14/${_themename}/gtk-3.0 ${pkgdir}/usr/share/themes/${_themename}
	
	# Wallpaper (pattern)
	cp ./Extras/Wallpapers/Patterns/wallpaper1.png ${pkgdir}/usr/share/backgrounds/xfce/${_themename}.png
	
	# License
	install -dm755 ${pkgdir}/usr/share/licenses/${pkgname}
	cp ./COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}