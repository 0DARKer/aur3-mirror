# Maintainer: itsme <itsme@ishere.ru>
# Contributor: itsme <itsme@ishere.ru>

pkgname='hda-verb'
pkgver=0.3
pkgrel=1
pkgdesc="Tool to send commands (verbs) to HD-Audio codecs"
arch=('i686' 'x86_64')
depends=('glibc')
url="ftp://ftp.kernel.org/pub/linux/kernel/people/tiwai/misc/"
license=('GPL')
source=(ftp://ftp.kernel.org/pub/linux/kernel/people/tiwai/misc/hda-verb/$pkgname-$pkgver.tar.bz2)
md5sums=('aea4e10700b328f6ebe90a5cc292e443')

build() {
	cd $srcdir/$pkgname-$pkgver

	make || return 1
	install -D $pkgname $pkgdir/usr/bin/$pkgname
}
