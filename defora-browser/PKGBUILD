# Contributor: Calimero <calimeroteknik@free.fr>
pkgname=defora-browser
pkgver=0.3.1
pkgrel=1
pkgdesc="The Defora lightweight file browser"
arch=('i686' 'x86_64')
url="http://defora.org/os"
license=('GPL3')
depends=('defora-libsystem' 'defora-libdesktop' 'gtk2')
source=(http://www.defora.org/os/download/download/3393/Browser-${pkgver}.tar.gz)
md5sums=('c5bf43ec04831d7f0ae4111369f0f28f')

build() {
  cd "$srcdir"/Browser-$pkgver
  make || return 1
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
