# Maintainer: 謝致邦 <Yeking@Red54.com>

pkgname=fastboot-os
pkgver=20120429
pkgrel=1
pkgdesc="Open source version of fastboot"
arch=('i686' 'x86_64')
depends=('libusb')
makedepends=('git')
conflicts=('fastboot')
url="https://android.googlesource.com/platform/system/core.git"
license=('Apache')
source=('Makefile')
md5sums=('b236824f4d6bd8e31540c7334ca2f198')

_git="https://android.googlesource.com/platform/system/core.git"

build() {
	cd $srcdir
	git clone $_git
	mv Makefile core/fastboot
	cd core/fastboot
	make
}
package(){
	cd ${srcdir}/core/fastboot
	make DESTDIR=${pkgdir} install
}
