pkgname=dropbox-pyndexer
pkgver=0.8
pkgrel=3
pkgdesc="It's a html index generator for dropbox public folders"
arch=('any')
url="http://forums.dropbox.com/topic.php?id=3075&replies=150"
license=('other')
depends=('python2' 'dropbox')
optdepends=('python-m2crypto: if you want encryption support')
conflicts=('dropbox-pyndexer-git')
source=('http://dl.dropbox.com/u/522679/dropbox/pyndexer.py' 'pyndexer-launcher' 'changelog')
install=pyndexer.install

md5sums=('a00d6b1a011997e1bffb985d5ee71d08'
         'be5446c0136958fc7ab41329b764a70f'
         'ea8441ee90258d48cff46dfeeb436ffc')


build() {

  cd $srcdir
  

  install -Dm755 pyndexer.py $pkgdir/usr/share/pyndexer/pyndexer.py
  
  install -Dm755 pyndexer-launcher $pkgdir/usr/bin/pyndexer

  install -Dm655 changelog $pkgdir/usr/share/pyndexer/changelog


} 
