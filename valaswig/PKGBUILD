pkgname="valaswig"
pkgver=0.3
pkgrel=1
pkgdesc="ValaSwig is a tool to parse vala or vapi files to transform
them into swig interface files."
arch=('i686' 'x86_64')
url="http://radare.org"
license=('GPL2')
depends=('vala')
provides=("valaswig")
options=(!strip)
source=(http://radare.org/get/${pkgname}-${pkgver}.tar.gz)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
         -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
         $(find ${srcdir}/${pkgname}-${pkgver} -name '*.py')
	make all|| return 1
		
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR=${pkgdir} install || return 1
}

md5sums=('9b614735c40b66eb6596e2fbcfb31594')
