# Contributor: Brian Knox <taotetek@gmail.com>

pkgname=libumberlog
pkgver=0.3.0
pkgrel=1
pkgdesc="CEE-enhanced syslog() API"
arch=(i686 x86_64)
license=(BSD)
url=https://github.com/deirf/$pkgname
options=(!libtool)
source=($url/archive/$pkgname-$pkgver.zip)
sha256sums=('fe5ebab3e793fdb98f5b8c34062637c78aa0a8a355ad1c8aedd5279ee34037c6')
sha512sums=('8d7753f646053e9d58705ef0d212f87eafa68c20638456b5bd9bc154549eeda56b6fc69355232aee190aee9c72c2412965b97616701afc9445e007b3dfc9d475')

build() {
    cd "$srcdir"/$pkgname-$pkgname-$pkgver
    sed -i -e 's/AM_CONFIG_HEADER/AC_CONFIG_HEADERS/' -e 's/AM_PROG_CC_STDC/AC_PROG_CC/' configure.ac
    #-e '15,15 s/.*//'
    autoreconf -i
    ./configure --prefix=/usr
    make
}

package() {
    make -C "$srcdir"/$pkgname-$pkgname-$pkgver/ DESTDIR="$pkgdir" install
}
