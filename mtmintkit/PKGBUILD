# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Contributor: Rene Reigel <stormtrooperofdeath@gmx.net>
pkgname=mtmintkit
pkgver=0.9.0
pkgrel=1
pkgdesc="SDL gui"
arch=('i686' 'x86_64')
url="http://mtmintmkit.sourceforge.net"
license=('GPL')
groups=()
depends=('freetype2' 'sdl')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()

source=(http://downloads.sourceforge.net/mtmintkit/${pkgname}-${pkgver}.tar.bz2)

md5sums=('c999e9d87abd00e6c043a1e3addbfab0')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=$pkgdir/usr cflags
  make || return 1
  make doc || return 1
  make install || return 1
  mkdir -p ${pkgdir}/usr/share/doc/$pkgname-$pkgver
  cp -a doc/* ${pkgdir}/usr/share/doc/$pkgname-$pkgver
  rm ${pkgdir}/usr/share/doc/$pkgname-$pkgver/Makefile ${pkgdir}/usr/share/doc/$pkgname-$pkgver/docgen ${pkgdir}/usr/share/doc/$pkgname-$pkgver/slack-desc
}

# vim:set ts=2 sw=2 et:
