# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=vatsinator
pkgver=0.2
pkgrel=1
pkgdesc="Vatsim network monitor. It shows logged-in pilots and controllers, displays airports information, weather reports, etc."
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/Vatsinator?content=150954"
license=('GPL3')
depends=('qt')
makedepends=('cmake')
source=(http://vatsinator.garapich.pl/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('7d04372c8c34d5a3ed16631be6c2183a')


build() {
  cd $srcdir/$pkgname-$pkgver
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make DESTDIR=$pkgdir install
}
