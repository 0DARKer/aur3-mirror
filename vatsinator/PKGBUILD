# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=vatsinator
pkgver=0.1
pkgrel=1
pkgdesc="Vatsim network monitor. It shows logged-in pilots and controllers, displays airports information, weather reports, etc."
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/Vatsinator?content=150954"
license=('GPL3')
depends=('qt')
makedepends=('cmake')
source=(https://github.com/downloads/Garrappachc/Vatsinator/$pkgname-$pkgver.tar.gz)
md5sums=('b6316ec1782e781de5408c3a851d6cb7')


build() {
  cd $srcdir/$pkgname-$pkgver
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make DESTDIR=$pkgdir install
}
