_relname=pyev
_relver=0.8.1
_libver=4.04

pkgname=python-$_relname
pkgver=${_relver}_${_libver}
pkgrel=1
pkgdesc="Python libev interface"
arch=('i686' 'x86_64')
url='http://pyev.googlecode.com/'
license=('BSD' 'GPL')
depends=('python2')
source=(http://pypi.python.org/packages/source/p/$_relname/$_relname-$_relver-$_libver.tar.gz)
md5sums=('7817599c75cb5e4f9baaab053a2c19c9')

build() {
  cd "$srcdir/$_relname-$_relver-$_libver"
  python2 setup.py build
}

package() {
  cd "$srcdir/$_relname-$_relver-$_libver"
  python2 setup.py install --root="$pkgdir" --prefix=/usr
}

