_relname=pyev
_version=0.5.3
_libever=3.8

pkgname=python-$_relname
pkgver=${_version}_${_libever}
pkgrel=2
pkgdesc='Python libev interface'
arch=('i686' 'x86_64')
url='http://pyev.googlecode.com/'
license=('BSD' 'GPL')
depends=('python2')
source=(http://pypi.python.org/packages/source/p/$_relname/$_relname-$_version-$_libever.tar.gz)
md5sums=('0bee2be1431881ada006904435d4bb3e')

build() {
  cd $srcdir/$_relname-$_version-$_libever
  python2 setup.py build || return 1
}

package() {
  cd $srcdir/$_relname-$_version-$_libever
  python2 setup.py install --root=$pkgdir --prefix=/usr || return 1
}

