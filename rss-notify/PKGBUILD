pkgname=rss-notify
pkgver=0.4
pkgrel=4
pkgdesc="an RSS reader for people who love notify-osd"
arch=('i686' 'x86_64')
replaces=('rssn')
optdepends=('notify-osd: notify-osd integration')
provides=('rssn')
url="https://launchpad.net/rssn/"
license=('GPL3')
depends=('python' 'python-feedparser' 'python-notify' 'gconf' 'pil')
source=("http://launchpad.net/rssn/0.4/0.4/+download/rss-notify_0.4-0ubuntu0~ppa1~jaunty.tar.gz")
md5sums=('4fb8e8da9300994165463ef00f1e3f08')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --prefix=$pkgdir/usr || return 1
}
