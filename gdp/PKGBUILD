pkgname=gdp
pkgdesc="Gedit Developer Plugins provides additional editing, checking, and project management features to Gedit"
pkgver=0.4.4
pkgrel=1
url="https://launchpad.net/gdp"
depends=('gedit' 'python2-pocket-lint')
makedepends=('make')
license=('GPL2')
arch=('i686' 'x86_64')
source=("http://launchpad.net/gdp/incubation/${pkgver}/+download/gedit-developer-plugins_${pkgver}.tar.gz")
md5sums=('3d967db374fef6d3466bd2f04df9fb25')

build(){
    cd $srcdir/gdp-${pkgver}/
    PYTHON=python2 ./configure --without-home --prefix=/usr
    make
    make DESTDIR=$pkgdir install 
}
