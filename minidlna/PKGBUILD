pkgname=minidlna
_pkgname=minidlna_
pkgver=1.0.19
_pkgver=1.0.19_src
pkgrel=1
pkgdesc="A DLNA/UPnP-AV Media server (aka ReadyDLNA)"
arch=('i686' 'x86_64')
url="http://minidlna.sourceforge.net"
license=('GPL')
depends=('libexif' 'libjpeg' 'libid3tag' 'flac' 'libvorbis' 'ffmpeg')
makedepends=()
source=(http://downloads.sourceforge.net/minidlna/$_pkgname$_pkgver.tar.gz \
        daemon_minidlna)




md5sums=('8bb5f2c0abc009e16039d7deecf09cf6'
         '8d1da3cd6ef847d26ebad5a3d3f5795c')

replaces=('minidlna-cvs')
backup=(etc/minidlna.conf)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  DESTDIR=$pkgdir make install
  mkdir -p ${pkgdir}/etc/rc.d
  install -D -m755 ${startdir}/daemon_minidlna ${pkgdir}/etc/rc.d/minidlna
}

