# Contributor: Matthias Sobczyk <matthias.sobczyk@googlemail.com>

pkgname=minidlna
_pkgname=minidlna_
pkgver=1.0.18
_pkgver=1.0.18_src
pkgrel=3
pkgdesc="A DLNA/UPnP-AV Media server (aka ReadyDLNA)"
arch=('i686' 'x86_64')
url="http://minidlna.sourceforge.net"
license=('GPL')
depends=('libexif' 'libjpeg' 'libid3tag' 'flac' 'libvorbis' 'ffmpeg')
makedepends=()
source=(http://downloads.sourceforge.net/minidlna/$_pkgname$_pkgver.tar.gz \
        minidlna)
md5sums=('8681b100242f0a2fef93cab7cdef061e'
         '76ea592fa9bc7a59974f0cf8ca370425')
replaces=('minidlna-cvs')
backup=(etc/minidlna.conf)

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  PREFIX="$pkgdir" make install
  mkdir -p ${pkgdir}/etc/rc.d
  install -D -m755 ${startdir}/minidlna ${pkgdir}/etc/rc.d/minidlna
}

