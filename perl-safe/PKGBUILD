# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-safe'
pkgver='2.27'
pkgrel='1'
pkgdesc="Restrict eval'd code to safe subset of ops"
arch=('any')
url='http://search.cpan.org/dist/Safe'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/R/RG/RGARCIA/Safe-2.27.tar.gz')
md5sums=('e9349da14d7ae706f9ba3dae7422032f')

build() {
  DIST_DIR="${srcdir}/Safe-2.27"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

