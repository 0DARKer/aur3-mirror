# Maintainer: Rikard Falkeborn <rikard.falkeborn@gmail.com>
pkgname=sensors-lxpanel-plugin
pkgver=1.6
pkgrel=1
pkgdesc="Monitor temperature/voltages/fan speeds in LXDE through lm-sensors."
arch=('i686' 'x86_64')
url="http://danamlund.dk/sensors_lxpanel_plugin"
license=('GPL2')
replaces={'sensors_lxpanel_plugin'}
groups=(lxde)
depends=('lm_sensors' 'lxpanel')
source=("https://github.com/danamlund/sensors-lxpanel-plugin/archive/v$pkgver.zip")
md5sums=('e397cde3075d86839ecb82130402c5fa')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p "${pkgdir}/usr/lib/lxpanel/plugins"
  make LXPANEL_PLUGINS_DIR="${pkgdir}/usr/lib/lxpanel/plugins" install
}
