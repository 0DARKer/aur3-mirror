pkgname=python2-elpy
pkgver=1.2.1
_pkgver=609451e78d8a252eb6c8319168606baaf97547ad
pkgrel=1
epoch=1
pkgdesc="Package to bring powerful Python editing to Emacs."
arch=('any')
url="https://github.com/jorgenschaefer/elpy"
license=('GPL')
depends=('python2' 'python2-flake8')
options=(!emptydirs)
source=("http://github.com/jorgenschaefer/elpy/archive/${_pkgver}.zip")
md5sums=('67cbb8d055f5c59f2489ad6f6b12f381')

package() {
  cd "${srcdir}/elpy-${_pkgver}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}
