# Maintainer: Jesse Spangenberger <azulephoenix@gmail.com>
pkgname=pdfstudio
pkgver=9.1.0
_pkgver=v9_1_0
pkgrel=1
pkgdesc="Review, annotate, and edit PDF Documents"
arch=('i686' 'x86_64')
url="http://www.qoppa.com/pdfstudio/"
license=('custom')
conflicts=('pdfstudio8')
depends=('java-runtime')
install=${pkgname}.install

_source_arch="linux"
[ "$CARCH" = "x86_64" ] && _source_arch="linux64"
     
sha256sums=('fbf2f6aee53b850eefd2bc1a24580ee95e2abeb8bf953564eafb9af9ac79f822 '
            '7d4c4bee272f0f3adba5586dca0c889553358f8cda6b23a6878078fc7ce36c1a'
            'b82acfb50e1e15a43c54aba7a0712b6c710c10ae74280a26a451343720e965e3'
            '0a3c1c337a22228f3df28412ca65d45d0d8067b508cf7b1cf93810fc17c9b447')

source=("http://www.qoppa.com/files/pdfstudio/demo/downloads/version9/PDFStudio_${_pkgver}_${_source_arch}.deb"
			${pkgname}.desktop
			${pkgname}.install
			${pkgname}.png)

[ "$CARCH" == "x86_64" ] && sha256sums[0]='c1a4e332b418773c135dae2cc7f1eea05ecc2b0250fb18d0cb4cc5567ba11f33'

package() {

	cd "${srcdir}"
	
	bsdtar -xf data.tar.gz 
	bsdtar -xf "${srcdir}/opt/pdfstudio9/lib/pdfstudio.jar" resources/license.html
	
	rm -r "${srcdir}/opt/pdfstudio9/jre"
		
	install -dm 755 "${pkgdir}/opt"
	install -dm 755 "${pkgdir}/usr/share/license/pdfstudio/"
	install -Dm644 ${pkgname}.desktop "${pkgdir}/usr/share/applications/${pkgname}.desktop"
	install -Dm644 ${pkgname}.png "${pkgdir}/usr/share/pixmaps/${pkgname}.png"
	install -Dm644 resources/license.html "${pkgdir}/usr/share/license/pdfstudio/LICENSE.html"
	
	cp -r opt/ "${pkgdir}"
	mkdir -p "${pkgdir}/usr/bin"
    ln -s /opt/pdfstudio9/pdfstudio9 "${pkgdir}/usr/bin/pdfstudio"
}
