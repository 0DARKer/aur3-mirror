# Maintainer: scorici <scorici AT yahoo DOT com>
pkgname=hltagconverter
pkgver=0.14
pkgrel=1
pkgdesc="Half-Life / Counter-Strike Tag Converter"
arch=(any)
url="http://eydteam.free.fr/dl/HlTagConverter"
license=('freeware')
depends=('wine')
makedepends=('unzip')
source=("$url/HlTagConverter.exe"
        'http://www.bang.ro/downloads/mfc42.zip'
        "$url"
        "$startdir/$pkgname.png")
md5sums=('9a3e251c255fd74aa507ea6e2008e562'
         '7f9534a1e7a2cc644fcd5ec3a4b740f6'
         'f74db3891b1d041bd8b4ab32fd04cda1'
         '27e3324d0ac23f3b3c30becf47d73d7d')

package() {
mkdir -p $pkgdir/usr/bin $pkgdir/usr/share/applications $pkgdir/usr/share/$pkgname
unzip -q $startdir/mfc42.zip -d $pkgdir/usr/share/$pkgname
mv $startdir/HlTagConverter.exe $pkgdir/usr/share/$pkgname
mv $startdir/$pkgname.png $pkgdir/usr/share/$pkgname
sed 's/<[^>]*>//g' $startdir/HlTagConverter|tail -n +15 > $pkgdir/usr/share/$pkgname/ReadMe.txt
echo "#!/bin/bash
cd /usr/share/$pkgname
wine $pkgname.exe
exit" > $pkgdir/usr/bin/$pkgname

chmod +x $pkgdir/usr/bin/$pkgname

echo "
[Desktop Entry]
Version=1.0
Type=Application
Name=$pkgdesc
Comment=Create spray/logo for Half-Life and/or Counter-Strike
Exec=$pkgname
Icon=/usr/share/$pkgname/$pkgname.png
Terminal=false
StartupNotify=false
Categories=Graphics;
" > $pkgdir/usr/share/applications/$pkgname.desktop
}
