# Maintainer: Wido <widomaker2k7 at gmail dot com>
# Contributor: Arnaud Pithon <apithon@free.fr>
pkgname=freetuxtv
pkgver=0.5.2
pkgrel=1
pkgdesc="WebTV player to watch ADSL TV on the PC with ISPs Free and SFR."
arch=('i686' 'x86_64')
url="http://code.google.com/p/freetuxtv/"
license=('GPL3')
depends=('vlc>=1.1' 'gtk2' 'sqlite3' 'curl' 'libnotify')
makedepends=('intltool')
source=(http://freetuxtv.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('8af0c1d3d298a726a430629eaa735899')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}
package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
