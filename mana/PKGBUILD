pkgname=mana
pkgver=0.6.0
pkgrel=1
pkgdesc="Client for The Mana World (TMW)."
arch=('i686' 'x86_64')
url="http://manasource.org/"
license=('GPL')
depends=('curl' 'guichan' 'enet' 'libgl' 'libxml2' 'mesa' 'physfs' 'sdl_image' 'sdl_mixer' 'sdl_net' 'sdl_ttf' 'sdl_gfx')
makedepends=('cmake' 'gettext')
optdepends=()
provides=('mana')
conflicts=('tmw' 'tmw-svn')
source=("http://manasource.org/files/$pkgname-$pkgver.tar.gz")
md5sums=('d1f8f95f2d59a893116ad17a30a267d8')

build() {
   cd "$srcdir/$pkgname-$pkgver"
   #autoreconf -i
   #cmake -DWITH-OPENGL=OFF -DCMAKE_INSTALL_PREFIX=/usr
   cmake -DCMAKE_INSTALL_PREFIX=/usr
   make
}
package(){
   cd "$srcdir/$pkgname-$pkgver"
   make DESTDIR=${pkgdir} install
}
