pkgname=django-feincms
_pkgname=FeinCMS
pkgver=1.0.4
pkgrel=1
pkgdesc="Django-based Page CMS and CMS building toolkit"
arch=('any')
url="http://github.com/matthiask/feincms/tree/master"
license=('custom')
depends=('python' 'django' 'django-tagging-svn' 'django-mptt-svn')
source=(http://pypi.python.org/packages/source/F/FeinCMS/FeinCMS-1.0.4.tar.gz)
md5sums=('f3b62261bdbc1dad92c2a54dd7c98761')

build() { 
    cd "$srcdir/$_pkgname-$pkgver"
    
    python setup.py install --root=$pkgdir || return 1
    install -D -m644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
