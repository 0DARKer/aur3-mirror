pkgname=robotframework-ride
pkgver=0.31
pkgrel=1
pkgdesc="Lightweight and intuitive test data editor for Robot Framework"
arch=('i686' 'x86_64')
url="http://code.google.com/p/robotframework-ride"
license=('APACHE')
depends=('robotframework' 'wxpython')
source=("http://robotframework-ride.googlecode.com/files/$pkgname-$pkgver.tar.gz")
md5sums=('1f22520d9003749e6fd7a90f7236d80a')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}
