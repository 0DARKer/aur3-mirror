# Maintainer  : Dan Vratil <vratil@progdansoft.com>

pkgname=lib32-freeimage
pkgver=3.15.0
pkgrel=1
_32pkgrel=1
pkgdesc="Library project for developers who would like to support popular graphics image formats."
arch=('x86_64')
url="http://freeimage.sourceforge.net"
license=('GTL' 'custom:FIPL')
groups=('lib32')
depends=('lib32-gcc-libs')
source=(ftp://mirrors.kernel.org/archlinux/community/os/i686/freeimage-${pkgver}-${_32pkgrel}-i686.pkg.tar.xz)
md5sums=('72000896fd9bb2609ec1436ee3a83743')

package() 
{
	mkdir -p ${pkgdir}/usr/lib32
	install ${srcdir}/usr/lib/* ${pkgdir}/usr/lib32/
	
	mkdir -p ${pkgdir}/usr/share/licenses/lib32-freeimage
	install ${srcdir}/usr/share/licenses/freeimage/* ${pkgdir}/usr/share/licenses/lib32-freeimage/
}
