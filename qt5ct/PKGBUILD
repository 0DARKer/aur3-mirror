# Maintainer: FadeMind <fademind@gmail.com>
# Contributor: Zatherz <zatherz at linux dot pl>

pkgname=qt5ct
pkgver=0.9
pkgrel=1
pkgdesc="Qt5 Configuration Utility (requires Qt platform theme to be set to qt5ct)"
arch=('i686' 'x86_64')
license=('BSD')
url="http://qt-apps.org/content/show.php/Qt5+Configuration+Tool?content=168066"
depends=('qt5-base' 'qt5-svg' 'qt5-tools')
sha256sums=('14eff36bb4425d72ea375d7f3f584ecbdfb7f705f76013961d916cc01137b392')
source=("${pkgname}-${pkgver}.tar.bz2::http://qt-apps.org/CONTENT/content-files/168066-${pkgname}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cd "src"
  cd "qt5ct"
  install -Dm755 qt5ct "${pkgdir}/usr/bin/qt5ct"
  cd ".."
  cd "qt5ct-qtplugin"
  install -Dm644 ./libqt5ct.so "${pkgdir}/usr/lib/qt/plugins/platformthemes/libqt5ct.so"
}
