pkgname=phun4-64bit
pkgver=4.22beta
pkgrel=1
pkgdesc="Phun is a free game like 2D physics sandbox"
arch=('i686' 'x86_64')
depends=('sdl_image' 'libpng')
url="http://www.phunland.com"
license=('custom')
source=('http://www.phunland.com/download/Phun_beta_4_22_linux64.tar.bz2' 'phun' 'phun.desktop' 'COPYING')
md5sums=('48dc46b68c68026b1ad5c1bda8001f83'
         '9fe25d7c096db61c78a30a03abbf8a8a'
         '4870ec465b7e129a2ac07cb4a9f98152'
         'faf9a176922664a0316e5062e7b18638')


build() {

mkdir "$pkgdir/opt/" || return 1
cp -r "$srcdir/Phun" "$pkgdir/opt/Phun" || return 1
chmod uoga+r $pkgdir/opt/Phun/* -R  || return
install -D -m755 "$srcdir/phun" "$pkgdir/usr/bin/phun" || return 1
install -D -m644 "$srcdir/phun.desktop" "$pkgdir/usr/share/applications/phun.desktop" || return 1
install -D -m644 "$srcdir/COPYING" "$pkgdir/usr/share/licenses/phun/COPYING" || return 1
}

