# Contributor: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=wire
pkgver=1.1.3
pkgrel=2
pkgdesc="A screen-oriented command line Wired client."
arch=('i686' 'x86_64')
url="http://www.zankasoftware.com/wired/wire/"
license=('BSD')
depends=('openssl')
source=("http://www.zankasoftware.com/dist/wire-latest.tar.gz")
md5sums=('e89e73d486ac89de20b52e1150bc099a') 

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr
  
  make 
}
package() {
  
  cd $srcdir/$pkgname-$pkgver

  make DESTDIR=$pkgdir bindir=$pkgdir/usr/bin mandir=$pkgdir/usr/share/man install

  install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
