# Maintainer: Gero MÃ¼ller <gero.mueller@physik.rwth-aachen.de>

pkgname=vispa
pkgver=0.4.0
pkgrel=1
arch=('any')
license=('LGPL')
pkgdesc="Visual Physics Analysis"
depends=('python2' 'pyqt')
makedepends=()
optdepends=(
	'pxl: modular physics analysis'
	'root: advanced statistics'
)
url="http://vispa.sourceforge.net"
source=(
	http://downloads.sourceforge.net/project/vispa/VISPA/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz
	vispa.png
	vispa.desktop
)

package() {
  cd $srcdir/${pkgname}-${pkgver}
  python2 setup.py install --prefix=/usr --root=${pkgdir}
  install -m 644 -D $srcdir/vispa.desktop ${pkgdir}/usr/share/applications/vispa.desktop
  install -m 644 -D $srcdir/vispa.png ${pkgdir}/usr/share/pixmaps/vispa.png
}

md5sums=('26b02b316b87054bf5546dbc112e3977'
         '3c2158315867984fd91efa0bf559b55f')
md5sums=('26b02b316b87054bf5546dbc112e3977'
         '3c2158315867984fd91efa0bf559b55f')
md5sums=('26b02b316b87054bf5546dbc112e3977'
         '9961e1794ca74f494efc2768970909f4'
         '3c2158315867984fd91efa0bf559b55f')
