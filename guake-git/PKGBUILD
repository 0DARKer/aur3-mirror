# Maintainer: Miguel Useche <migueluseche@skatox.com>
arch=(i686 x86_64)
pkgname=guake-git
pkgver=20110410
pkgrel=1
pkgdesc="a Gtk drop-down terminal (Recommended for GNOME desktop) "
url="http://www.guake.org/"
license=('GPL')
depends=('python2' 'pygtk' 'gnome-python' 'vte' 'python-notify' 'dbus-python' 'pkgconfig' 'gtk2' 'glib2')
makedepends=('git intltool gnome-common')
install=guake.install

_gitroot="http://git.guake.org/guake.git"
_gitname="guake"

build() {
  cd $srcdir/
  msg "Connecting to repos.guake-terminal.org GIT server...."
 if [ -d $srcdir/$_gitname ] ; then
  cd $_gitname && git pull origin
  msg "The local files are updated."
  else
  git clone $_gitroot
  fi
  msg "GIT checkout done or server timeout"
  msg "Starting make..."


  find ${srcdir} -type f -exec sed -i 's#/usr/bin/python$#/usr/bin/python2#g' '{}' \;
  find ${srcdir} -type f -exec sed -i 's#/usr/bin/env python$#/usr/bin/env python2#g' '{}' \;

  cp -r $srcdir/$_gitname $srcdir/$_gitname-build
  cd $srcdir/$_gitname-build
  ./autogen.sh --prefix=/usr --sysconfdir=/opt/gnome/etc
  make || return 1
  make DESTDIR=$pkgdir/ install

  mkdir -p $pkgdir/usr/share/gconf/schemas
  gconf-merge-schema  $pkgdir/usr/share/gconf/schemas/guake.schemas $pkgdir/opt/gnome/etc/gconf/schemas/*.schemas 
  rm -rf $pkgdir/opt/	
}
