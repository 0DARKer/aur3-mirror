# Maintainer: Miguel Useche <migueluseche@skatox.com>
arch=(i686 x86_64)
pkgname=guake-git
pkgver=20100516
pkgrel=1
pkgdesc="a Gtk drop-down terminal (Recommended for GNOME desktop) "
url="http://www.guake-terminal.org/"
license=('GPL')
depends=('pygtk' 'gnome-python-desktop' 'gnome-python-extras' 'vte' 'python-notify' 'dbus-python' 'pkgconfig')
makedepends=('git intltool gnome-common')

_gitroot="git://repos.guake-terminal.org/guake"
_gitname="guake"

build() {
  cd $srcdir/
  msg "Connecting to repos.guake-terminal.org GIT server...."
 if [ -d $srcdir/$_gitname ] ; then
  cd $_gitname && git-pull origin
  msg "The local files are updated."
  else
  git clone $_gitroot
  fi
  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r $srcdir/$_gitname $srcdir/$_gitname-build
  cd $srcdir/$_gitname-build
  ./autogen.sh --prefix=/usr --sysconfdir=/opt/gnome/etc
  make || return 1
  make DESTDIR=$pkgdir/ install

  mkdir -p $pkgdir/usr/share/gconf/schemas
  gconf-merge-schema  $pkgdir/usr/share/gconf/schemas/guake.schemas $pkgdir/opt/gnome/etc/gconf/schemas/*.schemas 
  rm -rf $pkgdir/opt/	
}
