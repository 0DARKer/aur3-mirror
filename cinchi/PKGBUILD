# Contributor: Michal Bozon <michal.bozon__at__gmail.com>
pkgname=cinchi
pkgver=1.01
pkgrel=2
pkgdesc="Non-standard IUPAC InChI utility"
arch=('i686' 'x86_64')
url="http://www.iupac.org/inchi/download/index.html"
license=('LGPL')
makedepends=('gcc' 'make')
source=("http://www.iupac.org/inchi/download/InChI-1-API.zip")

build() {
  cd "$startdir/src/InChI-1-API/cInChI/gcc_makefile/"
  make || return 1
  install -m755 -D "cInChI-1" "$startdir/pkg/usr/bin/cInChI-1"
  ln -s "$startdir/pkg/usr/bin/cInChI-1" "$startdir/pkg/usr/bin/cinchi"
}

md5sums=('9a4f78a6f6d2a45a7df39d95d4e57b8a')
