pkgname=python-ggplot
pkgver=0.4.7
pkgrel=1
pkgdesc="ggplot for python"
arch=('any')
url="https://github.com/yhat/ggplot/"
license=('BSD')
depends=('python-pandas' 'python-matplotlib' 'python-statsmodels')
source=("http://pypi.python.org/packages/source/g/ggplot/ggplot-${pkgver}.tar.gz")


build() {
    cd "$srcdir/ggplot-$pkgver"
    python setup.py build
}

package() {
    cd "$srcdir/ggplot-$pkgver"
    python setup.py install --root="$pkgdir" --optimize=1
}
sha256sums=('31056e8bc2853621cc2acf6f99cfe0e60b5b35ec6edd6ebf911caa2a9e223801')
