
# Maintainer: Gwenn Gueguen <gwenn+aur@demisel.net>
pkgname=lcmc
pkgver=1.2.3
pkgrel=1
epoch=0
pkgdesc="Linux Cluster Management Console"
arch=(any)
url="http://lcmc.sourceforge.net/"
license=('GPL')
groups=()
depends=(java-runtime libxtst)
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://downloads.sourceforge.net/$pkgname/${pkgname^^*}-$pkgver.jar" 'lcmc')
noextract=(${pkgname^^*}-$pkgver.jar)
md5sums=('aef176540af4ff911cbf23b6d954e641'
         '70d0fba9b27dafb027edd3ca53602c42')

package() {
  cd "$srcdir"
  install -d $pkgdir/usr/bin
  install -m 0755 -t $pkgdir/usr/bin lcmc
  install -d $pkgdir/usr/lib/${pkgname}
  install -t $pkgdir/usr/lib/${pkgname} ${pkgname^^*}-$pkgver.jar
}

