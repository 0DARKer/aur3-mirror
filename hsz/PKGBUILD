pkgname=hsz
pkgver=1.10s.d_r
pkgrel=1
epoch=1
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://bitbucket.org/agalog/releases/commits/branch/hsz"
license=('BSD')
depends=('python2')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=(73ee0e37d40d021101d80d56c76a8a58)

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
