pkgname=hsz
pkgver=1.03_s3c
pkgrel=1
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://bitbucket.org/agalog/releases/commits/branch/hsz"
license=('BSD')
depends=('python2')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=(21b106e7622913549cfaae1a3c0ac32d)

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
