pkgname=hsz
pkgver=1.10s3.d2
pkgrel=2
epoch=2
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://bitbucket.org/agalog/releases/commits/branch/hsz"
license=('BSD')
depends=('python2')
optdepends=('wxpython: gui support')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=(bd3cc0ca4b0360b3773b41a503e59fe4)

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
