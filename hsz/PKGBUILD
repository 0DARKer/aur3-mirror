pkgname=hsz
pkgver=1.12b.0
pkgrel=1
epoch=2
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/htmlsymbolize/"
license=('BSD')
depends=('python2')
optdepends=('wxpython: gui support')
source=("http://sourceforge.net/projects/htmlsymbolize/files/tarballs/$pkgname-${pkgver}.tar.gz/download")
#source=("$pkgname-${pkgver}.tar.gz")
md5sums=(0982931b623f4a2bc424fd8255410125)

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
