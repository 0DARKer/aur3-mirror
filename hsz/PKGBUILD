# Maintainer: Alexej Magura <agm2819*gmail*>
# 
# 
pkgname=hsz
pkgver=1.01
pkgrel=1
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://www.bitbucket.org/agalog/releases"
license=('BSD')
depends=('python2')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=(4ea0e2bdc438f35cc213488294b20a7f)

prepare() {
    cd $srcdir/$pkgname-$pkgver

    patch Makefile Makefile.diff

}

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
