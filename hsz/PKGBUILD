# 
# 
pkgname=hsz
pkgver=2.0.2u
_pkgver=2.0.2
epoch=4
pkgrel=2
pkgdesc="transcodes between html entities and regular text"
arch=('i686', 'x86_64')
url="https://sourceforge.net/projects/htmlsymbolize/"
license=('GPL3')
depends=('python2')
optdepends=('wxpython: gui support')
source=("http://sourceforge.net/projects/htmlsymbolize/files/$_pkgver/$pkgname-${pkgver}.tar.gz/download")
md5sums=('da3b8dfbb762c4cdd831d90a7aa3d8ed')
	 
prepare () {

    cd $srcdir/$pkgname-$pkgver
}

build() {

    cd $srcdir/$pkgname-$pkgver

    cd src 

    if [[ $CARCH = "x86_64" ]]; then

	make m64=' ' 

    elif [[ $CARCH = "i686" ]]; then

	make m32=' ' 

    else

	make

    fi


}

package() {

    cd $srcdir/$pkgname-$pkgver

    cd src 

    make DESTDIR=$pkgdir install

    make clean

}
