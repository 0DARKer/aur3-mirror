# 
# 
pkgname=hsz
pkgver=1.01_s2
pkgrel=2
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://bitbucket.org/agalog/releases/src/?at=hsz"
license=('BSD')
depends=('python2')
source=("https://bitbucket.org/agalog/releases/downloads/$pkgname-${pkgver}.tar.gz")
md5sums=(50af537f333ca6b8d6336ddf088fd50a)

prepare() {
    cd $srcdir/$pkgname-$pkgver

    patch Makefile Makefile.diff

}

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
