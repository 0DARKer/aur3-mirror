pkgname=hsz
pkgver=1.00_3
pkgrel=1
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://www.bitbucket.org/agalog/releases"
license=('BSD')
depends=('python2')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=(82adfe28d073b3b7e9ec6702cd1a856b)

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
