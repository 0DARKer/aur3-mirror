pkgname=hsz
pkgver=1.11~
pkgrel=1
epoch=2
pkgdesc="transcodes between html entities and regular text"
arch=('i686' 'x86_64')
url="https://bitbucket.org/agalog/releases/commits/branch/hsz"
license=('BSD')
depends=('python2')
optdepends=('wxpython: gui support')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=(c585f701881bb6e5aedbf2b8cf8558db)

build() {
    cd $srcdir/$pkgname-$pkgver

    make
}

package() {

    cd $srcdir/$pkgname-$pkgver

    make DESTDIR=$pkgdir install

}
