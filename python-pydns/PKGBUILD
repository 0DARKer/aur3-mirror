# Contributor: Samed Beyribey <ras0ir AT eventualis DOT org>
pkgname=python-pydns
pkgver=2.3.4
pkgrel=1
pkgdesc="A module for looking up DNS entries in Python applications"
arch=('i686' 'x86_64')
url="http://pydns.sourceforge.net"
license=('Python')
depends=('python')
makedepends=('python')
source=(http://downloads.sourceforge.net/pydns/pydns-$pkgver.tar.gz)
md5sums=('f2cd357a101ad7dd2b3f353a8dad51b8')

build() {
  cd "$srcdir/pydns-$pkgver"

  python setup.py build || return 1
  python setup.py install --root=$pkgdir || return 1
}
