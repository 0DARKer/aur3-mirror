pkgname=python-pydns
_realname=py3dns
pkgver=3.0.4
pkgrel=1
pkgdesc="A module for looking up DNS entries in Python applications"
arch=('any')
url="https://launchpad.net/py3dns"
license=('Python')
depends=('python')
source=("https://launchpad.net/${_realname}/3.0/${pkgver}/+download/${_realname}-${pkgver}.tar.gz")
md5sums=('e10d40402f57dc0432f93b33dee06c75')

package() {
  cd "$srcdir/$_realname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}
