pkgname=perl-datetime-format-pg
pkgver=0.16008
pkgrel=2
pkgdesc="'Parse and format PostgreSQL dates and times'"
arch=(i686 x86_64)
license=('perl')
url="http://search.cpan.org/~dmaki/DateTime-Format-Pg"
options=(!emptydirs)

depends=('perl-datetime-timezone' 'perl-datetime' 'perl-datetime-format-builder')
makedepends=('perl')

provides=('datetime-format-pg=0.16008' 'DateTime::Format::Pg=0.16008' 'perl-datetime-format-pg=0.16008')

source=(http://search.cpan.org/CPAN/authors/id/D/DM/DMAKI/DateTime-Format-Pg-0.16008.tar.gz)
md5sums=('1a10b6eb5573a666b1061991cfa28f58')
sha512sums=('184b353b21706eacf673205ec4363a9b02b0f471a5632b0807a68129d5d0b6a03a7dd4abbbcfc18a890a7c59d56faecb6e29bf7c706e2fc70ba2a29601d9d408')

build() {
  cd "${srcdir}/DateTime-Format-Pg-${pkgver}"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make test || return 1
}

package() {
  cd "${srcdir}/DateTime-Format-Pg-${pkgver}"
  make install DESTDIR=${pkgdir}
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

