# Maintainer: Giorgio Gilestro <gilest.ro>
pkgname=ugene-binary
pkgver=1.9.7
pkgrel=1
pkgdesc="A free cross-platform genome analysis suite. Precompiled version."
arch=('i686' 'x86_64')
url="http://ugene.unipro.ru"
license=('GPL')
depends=('qt' 'mesa')

source=( ${url}/downloads/ugene-$pkgver-x86.tar.gz ${url}/downloads/ugene-${pkgver}-x86-64.tar.gz ugene.desktop ugene.sh)
md5sums=('95ab039d5fdea90eec0e4e031e8ade47' 'a2aa60505303942fc2354315bacbc21e' '50d98bdb8f390605f52dd0ba15a525ab' '2558c5bd7af75e6ce53ec496e42be9a0')

if   [ "$CARCH" == 'i686' ]; then
  unset source[1]
  unset md5sums[1]
elif [ "$CARCH" == 'x86_64' ]; then
  unset source[0]
  unset md5sums[0]
fi


package() {
  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/{applications,ugene,man}

  cd $srcdir
  install ugene.desktop $pkgdir/usr/share/applications/
  install -m755 ugene.sh $pkgdir/usr/bin/ugene

  cd $srcdir/ugene-$pkgver/
  mv man1 $pkgdir/usr/share/man/
  cp -ra * $pkgdir/usr/share/ugene/
  
}


