# Maintainer: Giorgio Gilestro <gilest.ro>
pkgname=ugene-binary
pkgver=1.9.8
pkgrel=3
pkgdesc="A free cross-platform genome analysis suite. Precompiled version."
arch=('i686' 'x86_64')
url="http://ugene.unipro.ru"
license=('GPL')
depends=('qt' 'mesa')

source=( ${url}/downloads/ugene-$pkgver-x86.tar.gz ${url}/downloads/ugene-${pkgver}-x86-64.tar.gz ugene.desktop ugene.sh ugene.svg)
md5sums=('21ea899aea6f021850ab9cae46872fd1' '6fc8a4188d009c8d493b326d89979ae4' '28a763a5808f5e2cb77a9550835cb5e6' '73b4ca63dd4011bdabbf25fd1b3215e9' 'c65d205b7200e13910ceae9aa989bdc2')

if   [ "$CARCH" == 'i686' ]; then
  unset source[1]
  unset md5sums[1]
elif [ "$CARCH" == 'x86_64' ]; then
  unset source[0]
  unset md5sums[0]
fi


package() {
  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/{applications,ugene,man}

  cd $srcdir
  install ugene.desktop $pkgdir/usr/share/applications/
  install -m755 ugene.sh $pkgdir/usr/bin/ugene
  install ugene.svg $pkgdir/usr/share/ugene/

  cd $srcdir/ugene-$pkgver/
  mv man1 $pkgdir/usr/share/man/
  cp -ra * $pkgdir/usr/share/ugene/
  
}


