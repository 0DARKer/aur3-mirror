# Mantainer: Adria Arrufat <swiftscythe@gmail.com>

pkgname=krunner-events
_pkgname=plasma-runner-events
pkgver=0.2.2
pkgrel=1
pkgdesc='KRunner plugin that allows you to add new events or todos from KRunner to your calendar.'
arch=('i686' 'x86_64')
url=(http://kde-apps.org/content/show.php/Events+Plasma+Runner?content=118854)
license=('GPL')
depends=('kdebase-workspace')
makedepends=('automoc4' 'cmake')
source=(http://download.github.com/alno-plasma-runner-events-ee6f312.zip)
md5sums=('0d356c54afd0da172629e694ef2ed99c')
build() {
  cd ${srcdir}/alno-$_pkgname-ee6f312
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make || return 1
  make DESTDIR=${pkgdir} install
}
