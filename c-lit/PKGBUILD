# Maintainer: suasageandeggs <s_stoakley@hotmail.co.uk>
pkgname=c-lit
pkgver=1.8
pkgrel=1
pkgdesc="An application for converting LIT files."
arch=('i686' 'x86_64')
url="http://www.kyzer.me.uk/pack/convlit/"
license=('GPL2')
depends=('libtommath')
source=(http://www.kyzer.me.uk/pack/convlit/open_c-lit-$pkgver.tar.gz
	c-lit-patch)
md5sums=('d8c599cf0e3cd8bab08e455e51ef852d'
         '6360c5d6b1174e3b9cea6dcc0bf94114')
build() {

patch $srcdir/clit18/Makefile < $srcdir/c-lit-patch

cd $srcdir/lib
make || return 1
cd $srcdir/clit18
make || return 1

install -D -m755 $srcdir/clit18/clit $pkgdir/usr/bin/clit

}
