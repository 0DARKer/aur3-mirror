# Maintainer: phils3r <philippseiler1991@web.de>
# Contributor: Simon Steinbeiss

pkgname=faenza-xfce-addon
pkgver=0.2
pkgrel=1
pkgdesc="Add-On package for the faenza Icon Theme to provide better xfce in    tegration"
url="http://xfce-look.org/content/show.php/Faenza-Xfce?content=142885"
license=('GPL')
arch=('any')
depends=('faenza-icon-theme')
source=("https://github.com/shimmerproject/Faenza-Xfce/tarball/v0.2")
md5sums=('526da231a2064f4c1c6271cd52a2c54a')

build() {
	mkdir -p "${pkgdir}"/usr/share/icons
	tar xfz "${srcdir}"/v0.2 -C "${pkgdir}"/usr/share/icons
	mv "${pkgdir}"/usr/share/icons/shimmerproject-Faenza-Xfce-f43ea59 "${pkgdir}"/usr/share/icons/faenza-xfce-addon
}
