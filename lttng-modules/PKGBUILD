# Maintainer: Markus Opitz <mastero23 at gmail dot com>

pkgname=lttng-modules
pkgver=2.0.0rc2
pkgrel=1
pkgdesc="Kernel Modules for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('GPL')
depends=('linux>=2.6.38')
install=$pkgname.install
source=(http://lttng.org/files/$pkgname/$pkgname-2.0.0-rc2.tar.bz2)
md5sums=('91c7e91401989cc5795b1d718ae46ea6')

_kerneldir=/lib/modules/2.6.38-lttng/build

build() {
  cd "$srcdir/$pkgname-2.0.0-rc2"
  make
}

package() {
  cd "$srcdir/$pkgname-2.0.0-rc2"
  make INSTALL_MOD_PATH="$pkgdir/" modules_install
}
