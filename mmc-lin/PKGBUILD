pkgname=mmc-lin
pkgver=1.7.1
_pkgver=171
pkgrel=1
pkgdesc="Mobile Media Convertor"
url="http://www.miksoft.net/mobileMediaConverter.htm"
arch=('i686' 'x86_64')
license=('GPL')
[ "$CARCH" = "x86" ] && depends=(glibc gtk2 libstdc++5 expat ffmpeg opencore-amr)
[ "$CARCH" = "x86_64" ] && depends=(lib32-glibc lib32-gtk2 lib32-libstdc++5 lib32-expat ffmpeg opencore-amr)
source=(http://www.miksoft.net/products/mmc-older/$pkgname-$_pkgver.tar.gz mmc.png mmc.desktop)

md5sums=('f87887603633403ba3a3ddf68a20a936'
	 '6c0b039085a07df66c445261bead1837'
	 '7ac8a809fe31483d18b1634eda1c23a8')

build() {
	cd $srcdir/MobileMediaConverter/lib
	rm ./ffmpeg ./libopencore-*
	mkdir -p $pkgdir/opt/MIKSOFT/MobileMediaConverter
	cp -R $srcdir/MobileMediaConverter/* $pkgdir/opt/MIKSOFT/MobileMediaConverter

	ln -s /usr/bin/ffmpeg  $pkgdir/opt/MIKSOFT/MobileMediaConverter/lib

	mkdir -p $pkgdir/usr/share/pixmaps/
	mkdir -p $pkgdir/usr/share/applications/
	install -D -m644 $srcdir/mmc.png $pkgdir/usr/share/pixmaps/
	install -D -m644 $srcdir/mmc.desktop $pkgdir/usr/share/applications/
}

