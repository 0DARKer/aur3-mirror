# Maintainer: Quentin Stievenart <quentin.stievenart@gmail.com>
# Source: https://github.com/nicoulaj/archlinux-packages
pkgname=subliminal-git
pkgver=20121224
pkgrel=1
pkgdesc="Search and download subtitles."
arch=(any)
url="https://github.com/Diaoul/subliminal"
license=(LGPL)
depends=('python2' 'python2-beautifulsoup4>=4' 'python2-guessit>=0.4.1' 'python2-requests' 'python2-enzyme>=0.1' 'python2-html5lib')
optdepends=('python2-lxml: for faster processing')
makedepends=('python2-distribute')
conflicts=(${pkgname}-git)
source=()
md5sums=()

_gitroot="https://github.com/Diaoul/subliminal"
_gitname="subliminal"

package() {
  cd ${srcdir}
  msg 'Connecting to Git server...'

  if [ -d $_gitname ]; then
    cd $_gitname && git pull origin
    msg 'The local files have been updated.'
    cd ..
  else
    git clone $_gitroot $_gitname
  fi

  msg "Git checkout done or server timeout"
  msg "Starting make..."

  cp -r $_gitname $_gitname-build
  cd $_gitname-build

  python2 setup.py install --root="$pkgdir/" --optimize=1
}
