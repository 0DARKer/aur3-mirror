# Contributor: fnord0 < fnord0 AT riseup DOT net >
pkgname=spike
pkgver=2.9
pkgrel=1
pkgdesc="IMMUNITYsec's fuzzer creation kit in C"
arch=('i686' 'x86_64')
url="http://www.immunitysec.com/resources-freesoftware.shtml"
license=('GPL2')
depends=('python' 'openssl')
source=("http://www.immunitysec.com/downloads/SPIKE${pkgver}.tgz")
md5sums=(5e41c40904db2b3da06f181e8815aedd) 
sha1sums=(efc403a5f48f7172402f8896f398d2b1b9881f29)

build() {
	install -d ${pkgdir}/usr/lib || return 1
  	install -d ${pkgdir}/usr/src/${pkgname} || return 1
	install -d ${pkgdir}/usr/src/${pkgname}/doc || return 1
	cd ${startdir}/src/SPIKE/SPIKE/src
   	./configure --prefix=/usr || return 1
}

package() {
	cd ${startdir}/src/SPIKE/SPIKE/src
  	make || return 1
	install -m755 libdlrpc.so "${pkgdir}/usr/lib/" || return 1
	mv README* ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
	mv ChangeLog ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
	mv COPYING ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
	mv NEWS ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
	mv INSTALL ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
	mv AUTHORS ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
	mv *.txt ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
	mv * ${pkgdir}/usr/src/${pkgname}/ || return 1
	cd ${startdir}/src/SPIKE/SPIKE
  	for doc in *.txt; do
        	install -Dm644 ${doc} ${pkgdir}/usr/src/${pkgname}/doc/${doc} || return 1
  	done
	mv ${startdir}/src/SPIKE/SPIKE/data ${pkgdir}/usr/src/${pkgname}/ || return 1
	mv ${startdir}/src/SPIKE/SPIKE/dcedump ${pkgdir}/usr/src/${pkgname}/ || return 1
	mv ${startdir}/src/SPIKE/SPIKE/encrypted ${pkgdir}/usr/src/${pkgname}/ || return 1
	mv ${startdir}/src/SPIKE/SPIKE/include ${pkgdir}/usr/src/${pkgname}/ || return 1
	mv ${startdir}/src/SPIKE/SPIKE/documentation ${pkgdir}/usr/src/${pkgname}/doc/ || return 1
        cd ${startdir}/src/SPIKE
	mv backups ${pkgdir}/usr/src/${pkgname}/ || return 1
  	install -Dm644 AUTHOR ${pkgdir}/usr/src/${pkgname}/doc/AUTHOR || return 1
  	install -Dm644 dave_immunitysec_com.asc ${pkgdir}/usr/src/${pkgname}/doc/dave_immunitysec_com.asc || return 1
	echo -e ""
	echo -e "\e[1;34m[\e[0m\e[1;31m*\e[0m\e[1;34m]\e[0m \e[1;31mthe spike fuzzer creation kit resides in the directory \e[1;34m'\e[0m\e[1;31m/usr/src/spike\e[1;34m'\e[0m\e[1;31m .\e[0m"
	echo -e "\e[1;34m>>>\e[0m \e[1;31mthe documentation resides in the directory \e[1;34m'\e[0m\e[1;31m/usr/src/spike/doc\e[1;34m'\e[0m\e[1;31m .\e[0m"
	echo -e ""
}
# vim:syntax=sh
