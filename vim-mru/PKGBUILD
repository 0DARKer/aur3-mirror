# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-mru
pkgver=3.2
_scriptid=9274
pkgrel=1
pkgdesc="Plugin to manage Most Recently Used (MRU) files"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=521"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('67ec21451af79eda30b4a452304caaf2'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/plugin/mru.vim || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
