pkgname=vim-mru
pkgver=3.3
_scriptid=11919
pkgrel=4
pkgdesc="Plugin to manage Most Recently Used (MRU) files"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=521"
license=('custom:none')
depends=(vim)
groups=('vim-plugins')
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid})
md5sums=('69db40d4652dbd2829cd8e89d559cf77')

package() {
    install -m 644 -D ${srcdir}/${pkgname}\
	    ${pkgdir}/usr/share/vim/vimfiles/plugin/mru.vim || return 1
}
