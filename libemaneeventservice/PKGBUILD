# Maintainer: Tom Wambold <tom5760@gmail.com>
pkgname=libemaneeventservice
pkgver=0.4.8
pkgrel=1
pkgdesc="Library used for sending events to EMANE"
arch=('i686' 'x86_64')
url="http://labs.cengen.com/emane/download/addons/libemaneeventservice.html"
license=('BSD')
depends=('libxml2' 'emane')
makedepends=('doxygen')
source=(http://labs.cengen.com/emane/download/source/0.7.2/$pkgname-$pkgver.tar.gz)
md5sums=('01b11402fbd40c9139cbba0e48da24de')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

