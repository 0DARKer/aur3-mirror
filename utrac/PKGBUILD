# Contributor: Eric Forgeot < http://ifiction.free.fr >
pkgname=utrac
pkgver=0.3.0
pkgrel=1
pkgdesc="Universal Text Recognizer and Converter.  It is a command line tool and a library that recognize the encoding of an input file (ex: UTF-8, ISO-8859-1, CP437...) and its end-of-line type (CR, LF, CRLF)."
arch=(i686 x86_64)
url="http://utrac.sourceforge.net/"
license=('GPL')
depends=('glibc')
#akedepends=('patch')
#provides=()
#conflicts=()
#replaces=()
#backup=()
#groups=()
#options=()
#install=
source=(http://utrac.sourceforge.net/download/$pkgname-$pkgver.tar.gz)
#noextract=()
md5sums=(0b70a94e450d428bc49d499110052ae6)

build() {
  cd $startdir/src/$pkgname-$pkgver
  for i in Makefile; do sed 's/PREFIX_PATH = \/usr\/local/PREFIX_PATH = \/usr/g' $i > $i-tmp; mv $i $i-backup; mv $i-tmp $i; done
  make || return 1 
        strip ./utrac
        mkdir -p $startdir/pkg/usr/bin/
        cp ./utrac $startdir/pkg/usr/bin/
        mkdir -p $startdir/pkg/usr/share/
        mkdir -p $startdir/pkg/usr/share/utrac
        cp -f charsets.dat $startdir/pkg/usr/share/utrac
        mkdir -p $startdir/pkg/usr/man/man1
        cp -f utrac.1 $startdir/pkg/usr/man/man1

}

