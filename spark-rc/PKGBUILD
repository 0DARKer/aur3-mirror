# Maintainer Jack Frost <fbt@fleshless.org>

pkgname='spark-rc'
pkgdesc='A simple rc script'
license='BSD'
pkgver=1.0
pkgrel=1
arch='any'
url='https://github.com/fbt/spark-rc'
provides='spark-rc'
conflicts='spark-rc'
backup=( 'etc/rc.conf' )

source=( "https://github.com/fbt/spark-rc/archive/${pkgver}.zip" )
md5sums='SKIP'

build() { echo 'No build required'; }

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	mkdir -pm 755 "$pkgdir/sbin" "$pkgdir/etc"

	install -Dm755 bin/* -t "$pkgdir/sbin"
	install -Dm755 etc/* -t "$pkgdir/etc"
}
