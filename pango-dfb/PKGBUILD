# Contributor: bountykiller <masse.nicolas@gmail.com>
pkgname=pango-dfb
pkgrealname=pango
pkgver=1.24.2
pkgrel=1
pkgdesc="pango library compiled with directfb backend"
arch=(i686 x86_64)
url="http://www.pango.org/"
license=('GPL')
depends=('directfb' 'pixman>=0.12' 'glib2>=2.18' )
source=(http://ftp.gnome.org/pub/GNOME/sources/pango/1.24/$pkgrealname-$pkgver.tar.bz2)
md5sums=('7bc6c884d847cabc613e4c6d663771f5')
install=${pkgname}.install
build () {
	export PREFIX=/opt/gtkdfb
	export LD_LIBRARY_PATH=$PREFIX/lib
	export PKG_CONFIG_PATH=$LD_LIBRARY_PATH/pkgconfig
	cd $startdir/src/$pkgrealname-$pkgver/
	./configure --prefix=$PREFIX --without-x
	make
	make DESTDIR=$startdir/pkg install
}
