_pkgbasename=fmodex
pkgname=lib32-$_pkgbasename
pkgver=4.44.27
pkgrel=1
pkgdesc="An advanced audio engine"
arch=('x86_64')
url="http://www.fmod.org/"
license=('custom')
depends=("$_pkgbasename>=$pkgver")
source=("http://www.fmod.org/download/fmodex/api/Linux/fmodapi${pkgver//./}linux.tar.gz")
md5sums=('722c1b98d73cb8c9db2d6772554f2510')

package() {
  cd fmodapi${pkgver//./}linux

  mkdir -p ${pkgdir}/usr/lib32

  cp -d api/lib/* ${pkgdir}/usr/lib32/
  rm ${pkgdir}/usr/lib32/*64*

  cd ${pkgdir}/usr/lib32
  ln -sf libfmodex-${pkgver}.so libfmodex.so
  ln -sf libfmodexL-${pkgver}.so libfmodexL.so
  cd ${srcdir}/fmodapi${pkgver//./}linux

  mkdir -p ${pkgdir}/usr/share/licenses/
  ln -s $_pkgbasename "$pkgdir/usr/share/licenses/$pkgname"
}
