# Contributor: portix <portix at gmx.net>

pkgname=dwb
pkgver=2011.08.27
pkgrel=1
pkgdesc="Tiling web browser based on webkit and gtk with vi-like keyboard shortcuts, stable snapshot" 
url="http://bitbucket.org/portix/dwb/wiki" 
arch=('i686' 'x86_64')
license=('GPL')
depends=('libwebkit' 'gtk2')
provides=(dwb)
conflicts=('dwb-hg' 'dwb-gtk3-hg')
makedepends=('pkgconfig')
source=(https://bitbucket.org/portix/dwb/downloads/${pkgname}-${pkgver}.tar.gz)
md5sums=('550db6a07c14f90b43573d259ff1fffb')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
}
package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
