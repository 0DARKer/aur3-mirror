# Contributor: portix <portix@gmx.net>

pkgname=dwb
pkgver=2011.06.28
pkgrel=2
pkgdesc="Tiling web browser based on webkit and gtk with vi-like keyboard shortcuts, stable snapshot" 
url="http://bitbucket.org/portix/dwb/wiki" 
arch=('i686' 'x86_64')
license=('GPL')
depends=('libwebkit')
provides=(dwb)
conflicts=(dwb-hg)
makedepends=('pkgconfig')
source=(https://bitbucket.org/portix/dwb/downloads/${pkgname}-${pkgver}.tar.gz)
md5sums=('b8fec36ded0f32f1e41429fe08137f51')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
}
package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
