# Contributor: portix <portix at gmx.net>

pkgname=dwb
pkgver=2012.02.01
pkgrel=1
pkgdesc="A web browser based on webkit and gtk with vi-like keyboard shortcuts, stable snapshot" 
url="http://bitbucket.org/portix/dwb/wiki" 
arch=('i686' 'x86_64')
license=('GPL')
depends=('libwebkit' 'gtk2')
provides=(dwb)
conflicts=('dwb-hg' 'dwb-gtk3-hg')
makedepends=('pkgconfig')
source=(https://bitbucket.org/portix/dwb/downloads/${pkgname}-${pkgver}.tar.gz)
md5sums=('9d1da367b745f4185aa35309747bb8c9')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
}
package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
