# Maintainer: nizox <nizzox@gmail.com>
pkgname=dhcpcd-ui
pkgver=0.4.0
pkgrel=1
pkgdesc="dhcpcd Monitor in GTK+"
url="http://roy.marples.name/projects/dhcpcd-ui"
license=("BSD")
depends=("libnotify" "dhcpcd-dbus>=0.4.0")
source=(http://roy.marples.name/downloads/dhcpcd/$pkgname-$pkgver.tar.bz2)

arch=(i686 x86_64)

build() {
  cd $startdir/src/$pkgname-$pkgver

  export SYSCONFDIR="/etc/xdg/autostart"
  make || return 1
  make PREFIX=/usr DESTDIR=$startdir/pkg install
  
  #install LICENSE
  install -d $pkgdir/usr/share/licenses/$pkgname || return 1
  awk '{if(FNR<27)print $0}' ${srcdir}/${pkgname}-${pkgver}/src/dhcpcd-gtk/dhcpcd-gtk.h \
	>> ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

md5sums=('e2a4b029f1974a885c0b3bacef111db1')
