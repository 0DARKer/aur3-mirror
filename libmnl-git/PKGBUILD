# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=libmnl-git
pkgver=1.0.3.6.g260759d
pkgrel=1
pkgdesc="Library for minimalistic netlink - git checkout"
arch=('i686' 'x86_64')
url="http://www.netfilter.org/projects/libmnl/"
license=('GPL')
makedepends=('git')
provides=('libmnl')
conflicts=('libmnl')
source=('git://git.netfilter.org/libmnl.git')

pkgver() {
	cd libmnl/
	git describe --tags --long | sed 's|^[^0-9]*||;s|-|.|g'
}

build() {
	cd libmnl/

	sh autogen.sh
	./configure --prefix=/usr
	make
}

package() {
	cd libmnl/

	make DESTDIR="${pkgdir}" install
}

sha256sums=('SKIP')
