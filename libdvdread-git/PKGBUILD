# Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=libdvdread-git
pkgver=20130206
pkgrel=1
pkgdesc="A simple foundation for reading DVD video disks (GIT version)"
arch=('i686' 'x86_64')
url="http://dvdnav.mplayerhq.hu/"
license=('GPL2')
depends=('libdvdcss' 'bash')
makedepends=('git')
provides=('libdvdread')
conflicts=('libdvdread')
options=('!libtool')

_gitroot="git://git.videolan.org/libdvdread.git"
_gitname="libdvdread"

build() {
  cd "${srcdir}"

  msg "Connecting to SVN server...."

  if [ -d "${_gitname}" ] ; then
      cd "${_gitname}" && git pull
  else
      git clone --depth=1 "${_gitroot}" "${_gitname}"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -fr "${srcdir}/${_gitname}-build"
  cp -R "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd  "${srcdir}/${_gitname}-build"

  sed -e 's|INCLUDES|AM_CPPFLAGS|' -e '22a AC_CONFIG_MACRO_DIR([m4])' -i configure.ac
  sed '1a ACLOCAL_AMFLAGS = -I m4' -i Makefile.am

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}" install
}
