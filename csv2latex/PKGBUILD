# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=csv2latex
pkgver=0.16
pkgrel=1
pkgdesc="A csv to LaTeX file converter"
arch=('i686' 'x86_64')
url="http://herewe.servebeer.com/csv2latex/"
license=('GPL2')
depends=('glibc')
source=(http://herewe.servebeer.com/csv2latex/releases/csv2latex-$pkgver.tar.gz)
md5sums=('dfc280d0e0ca9a6497fd79c454455bca')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make || return 1
  install -d m755 "$pkgdir"/usr/{bin,share/man/man1}
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
