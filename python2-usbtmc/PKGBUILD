# Maintainer: Alex Forencich <alex@alexforencich.com>
pkgname=python2-usbtmc
pkgver=0.5
pkgrel=1
pkgdesc="A Python USBTMC driver for controlling instruments over USB."
arch=('any')
url="https://github.com/alexforencich/python-usbtmc"
license=('MIT')
depends=('python2' 'python2-pyusb')

source=("python-usbtmc-$pkgver.tar.gz::https://github.com/alexforencich/python-usbtmc/archive/v$pkgver.tar.gz")
md5sums=('5c6c4d84841174a0747a3a8252edc080')

build() {
  cd "$srcdir/python-usbtmc-$pkgver"
}

package() {
  cd "$srcdir/python-usbtmc-$pkgver"
  python2 setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

