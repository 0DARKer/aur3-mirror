pkgname=wireframesketcher-studio
pkgver=3.8.0
pkgrel=1
pkgdesc="WireframeSketcher is a wireframing tool for mockups and prototypes (trail version)"
arch=('i686' 'x86_64')
url="http://wireframesketcher.com"
license=('nonfree')
if [ "${CARCH}" = "x86_64" ]; then
    _arch="amd64"
    sha512sums=('15b74a756484b7a507806495309d6b8492a7c4db262bbcb6b857606ade16bab16d044830bccdc540ddd0a130046d2d9ba0e7f738092602559e27c7834919b271')
else
    _arch="i386"
    sha512sums=('65a0906f9bef65bab69e867a91b72748fbe0cc93af2618af80a6f77a2168228085601d0be9f2c24f9757cc2d351833b4f54d8147992ee26f28b72b5cb6c59829')
fi 
source=("http://d5t9d4amqtp1r.cloudfront.net/studio/dist/WireframeSketcherStudio-${pkgver}_${_arch}.deb")
build() {
    cd $srcdir
    ar x WireframeSketcherStudio-${pkgver}_${_arch}.deb
}
package () {
    mkdir -p "$pkgdir/opt/"
    tar -C $pkgdir/ -xvf $srcdir/data.tar.gz
    mkdir -p $pkgdir/usr/bin
    echo -e "#!/bin/bash\n/opt/WireframeSketcherStudio/sketcher \$@" > $pkgdir/usr/bin/${pkgname}
    chmod a+x $pkgdir/usr/bin/${pkgname}
}

