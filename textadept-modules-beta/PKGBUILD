# Maintainer: Niklas Wall√©n <nikw at gmx dot com>

pkgname=textadept-modules-beta
_version=7.2_beta_3
pkgver=7.2b3
pkgrel=1
pkgdesc="Official modules for Textadept"
arch=('any')
url="http://foicica.com/textadept"
license=('MIT')
depends=('textadept-beta')
provides=("textadept-modules=$pkgver")
conflicts=('textadept-modules')
source=("http://foicica.com/textadept/download/textadept_${_version}.modules.zip"
        "LICENSE")
md5sums=('7689a71bc626a0a14f1e05f335d21ae3'
         '91399f166258afd22907d1f7c3be2925')

package() {
  cd "$srcdir/textadept_${_version}.modules/modules"
  for _mod in *; do
    install -d "$pkgdir/usr/share/textadept/modules/$_mod"
    install -m644 "$_mod/"* "$pkgdir/usr/share/textadept/modules/$_mod/"
  done

  install -Dm644 "$srcdir/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
