# Contributor: Luiz Ribeiro <luizribeiro@gmail.com>

pkgname=lupac
pkgver=0.0.7a
pkgrel=3
pkgdesc="A simple python script that sorts pacman's system packages by usage."
arch=('i686' 'x86_64')
url="http://venox.qc.to/"
license=('GPL')
depends=('python' 'pacman>=3.1.0' 'sed' 'grep')
install=
source=(http://files.luizribeiro.org/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('0515b1889151186e05de1181a51d3734')

build() {
  cd $srcdir/lupac
  install -Dm755 $pkgname $startdir/pkg/usr/bin/$pkgname || return 1
}

# vim:set ts=2 sw=2 et:
