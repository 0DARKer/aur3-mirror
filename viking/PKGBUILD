pkgname=viking
pkgver=1.0.2
pkgrel=1
pkgdesc="GTK+2 application to manage GPS data."
arch=('i686' 'x86_64')
url="http://viking.sourceforge.net"
license=('GPL2')
depends=('gtk2' 'gpsd' 'curl' 'glib2' 'gettext' 'expat' 'gnome-doc-utils')
makedepends=('pkgconfig' 'intltool' 'automake' 'autoconf')
source=("http://downloads.sourceforge.net/viking/$pkgname-$pkgver.tar.gz" 'gpsdclient.patch')
md5sums=('e47f501eb33a940572b425c8a423b299'
         '44baa2049f6c5fef91fff4922ee8e956')

build() {
	cd $srcdir/$pkgname-$pkgver
	patch -p0 -i $srcdir/gpsdclient.patch
	./configure --prefix=/usr
	make
}

package(){
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
	install -Dm644 $srcdir/$pkgname-$pkgver/src/icons/$pkgname.png $pkgdir/usr/share/pixmaps/$pkgname.png
}

