# Contributor: edloaa <edloaa at googlemail dot com>
pkgname=tunlr
pkgver=0.0.3
pkgrel=1
pkgdesc="watch netflix, mtv, cbs, hulu and more outside the u.s."
arch=('any')
url="http://tunlr.net/"
license=('GPL')
depends=('bash' 'coreutils' 'wget')
source=($pkgname 'tunlr_dns')
md5sums=('d07ae1779aa6ba41048a1f57d21f066e'
         '7f981ed78a9678b27c169805fc3dc1fb')

build() {
    install -D -m755 $pkgname $pkgdir/usr/bin/$pkgname
    install -D -m644 tunlr_dns $pkgdir/etc/tunlr/tunlr_dns
}
