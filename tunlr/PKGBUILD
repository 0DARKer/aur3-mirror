# Maintainer: edloaa <edloaa at googlemail dot com>
# Contributor: edloaa <edloaa at googlemail dot com>
pkgname=tunlr
pkgver=0.0.2
pkgrel=1
pkgdesc="start tunlr to watch netflix, mtv, cbs, hulu and more outside the U.S."
arch=('any')
url="http://tunlr.net/"
license=('GPL')
depends=('bash' 'coreutils')
source=($pkgname 'tunlr_dns')
md5sums=('98706bed8099112ed3df8e4866cc576d'
         '7f981ed78a9678b27c169805fc3dc1fb')

build() {
    install -D -m755 $pkgname $pkgdir/usr/bin/$pkgname
    install -D -m644 tunlr_dns $pkgdir/etc/tunlr/tunlr_dns
}
