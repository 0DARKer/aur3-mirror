# Maintainer: edloaa <edloaa at googlemail dot com>
# Contributor: edloaa <edloaa at googlemail dot com>
pkgname=tunlr
pkgver=0.0.5
pkgrel=1
pkgdesc="watch netflix, mtv, cbs, hulu and more outside the u.s. (start and stop tunlr)"
arch=('any')
url="http://tunlr.net/"
license=('GPL')
depends=('bash' 'coreutils' 'grep' 'wget')
source=($pkgname 'tunlr_dns')
md5sums=('0502f11897c4f61899fdcd044bfb9969'
         'f042414df35fc15c341e4b4805d785d8')

build() {
    install -D -m755 $pkgname $pkgdir/usr/bin/$pkgname
    install -D -m644 tunlr_dns $pkgdir/etc/tunlr/tunlr_dns
}
