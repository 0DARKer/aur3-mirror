# Maintainer: Bartek Piotrowski <barthalion@gmail.com>
pkgname=pytomtom
pkgver=0.5
pkgrel=1
pkgdesc="Manage your TomTom under Linux"
arch=('i686' 'x86_64')
url="http://pytomtom.tuxfamily.org/"
license=('GPL')
depends=('python2' 'pygtk' 'cabextract')
source=(http://launchpad.net/pytomtom/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz)
md5sums=('44c6ed7571696300a7c83e16cd1c8713 ')

package() {
  cd "${srcdir}/${pkgname}"
  sed -i -e 's/python/python2/' bin/pytomtom
  install -Dm 755 bin/pytomtom "${pkgdir}/usr/bin/pytomtom"
  chmod -R 755 share #I've not idea how make it better, but it's works.
  cp -R share "${pkgdir}/usr"
}
