# Maintainer: Alexander Rødseth <rodseth@gmail.com>
pkgname=ninja-open
pkgver=0.6
pkgrel=2
pkgdesc="A quick, dirty, hardcoded and working replacement for xdg-open"
arch=('x86_64' 'i686')
url="http://ninja-open.roboticoverlords.org/"
license=('GPL2')
depends=('feh' 'evince' 'file-roller' 'deluge' 'gedit' 'wine' 'chromium-browser-bin' 'smplayer' 'vlc' 'libgnome')
makedepends=('go')
options=(!strip)
source=("http://ninja-open.roboticoverlords.org/$pkgname-$pkgver.xz")
md5sums=('34017215937a3faffdc8a30c4e6afca3')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make || GOROOT=/usr/lib/go make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/xdg-open"
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 et:
