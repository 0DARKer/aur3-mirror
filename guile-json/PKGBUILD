pkgname=guile-json
pkgrel=1
pkgver=0.3.1
pkgdesc="JSON module for Guile"
arch=(any)
license=(lgpl3)
makedepends=()
source=("http://download.savannah.gnu.org/releases/guile-json/guile-json-0.3.1.tar.gz")
url="https://github.com/aconchillo/guile-json"
md5sums=(8e5d9de628053ff8f52c4d623702394f)

build() {
  cd "$pkgname-$pkgver" && ./configure --prefix="$pkgdir/usr"
  make
}

package() {
  cd "$pkgname-$pkgver" && make install
}