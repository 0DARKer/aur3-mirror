pkgname=archcfg
pkgver=mod_1.0
pkgrel=2
pkgdesc="This script important Arch Linux configuration files for editing. Modified."
url="http://opendesktop.org/content/show.php?content=137743"
depends=()
source=("http://dl.dropbox.com/u/15144878/archcfg-mod.sh")
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('c64ebfa3e2953560cd3d3ebc19921ce8')

build() {
	mkdir -p $pkgdir/usr/bin/
	install -m744 archcfg-mod.sh $pkgdir/usr/bin/archcfg
}
