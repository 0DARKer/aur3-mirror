# Maintainer: simke <goranvaiii@gmail.com>

pkgname=archcfg
pkgver=2.0c
pkgrel=1
pkgdesc="This script is to call easy the important Arch Linux configuration files for editing."
url="http://opendesktop.org/content/show.php?content=137743"
depends=()
source=("http://opendesktop.org/CONTENT/content-files/137743-Archcfg.sh")
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('0eba49b35c60db427cb6583f7d12deb4')

build() {
	mkdir -p $pkgdir/usr/bin/
	install -m744 137743-Archcfg.sh $pkgdir/usr/bin/archcfg
}
