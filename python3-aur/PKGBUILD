#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2012.12
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2012.12.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2012.12.tar.xz.sig
)
sha512sums=(
  c3580530ba27f3fc8c4ed80b9bc7030eece80810b18234bc92a11fa662df82a184ebc74dde068104f5ea8394c7078ff140068f30eefdc760068ea18a0a1d8d57
  e8fa55f100aa489e3cb5a388197e7cd33379ec582674c89eebd026d5ba1238dc7d7a15c3387d001ff18f17f2fa57d0c3a453306b18942341f700972811387869
)
md5sums=(
  90b57c20ca7e46bd5ec31dde95a4cd7c
  d291701e4332e8b107cca03134302e16
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


