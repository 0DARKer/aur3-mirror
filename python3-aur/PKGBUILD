depends=(python3 python3-xynexdg)
conflicts=(python-aur)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.03.09.61887.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.03.09.61887.tar.xz.sig
)
sha512sums=(
