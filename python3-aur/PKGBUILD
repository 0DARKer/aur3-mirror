#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2013.6
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.6.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.6.tar.xz.sig
)
sha512sums=(
  680b1450fb2e9797dd8e9a758789f05988b2c69af18406ba5d266dd2147e91c36b49c7b6b9c92ca3f34b2cea6368d0b519b592cc393318a1c6ea0f24a800ff52
  7e268d29e957b17d262040f8c57e7c4510c020edc2cc4a5d31640122058c64221ef20bb3d9027f876a64e37c3948cf3aa445102780369998f3eb62bf5a8e4f08
)
md5sums=(
  e8f8c6bf5497326191d42ebef3f9092a
  615fbe1cbb38b9567c451e894c57d3a9
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


