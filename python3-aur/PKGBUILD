#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2013.3.4
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.4.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.4.tar.xz.sig
)
sha512sums=(
  f3eccf1079952a8edd474de40041dd4cea3d395358096ea8f6d326e51d482991e9a8d2c92d77c5016c2e41d3b7c966f4f2d7d77e0f67db2c6d9b64e0a84cb181
  96cf357dc844a011c036e10d3284881d91273acbe2ef30943e78dcb8fa39fc7f6edf725b45078aa1a3ac04e82e8288f5b4767979c56e4753093855c0eb526711
)
md5sums=(
  086380ed09693d85dcf43031d922dc89
  2ca63566a3df25364a57aa658b0216c2
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


