#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2014.6.1
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2014.6.1.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2014.6.1.tar.xz.sig
)
sha512sums=(
  d1f9a0f6fc3ac7c50b7032db8fe7e78017998df281d7a3f30ec799ea70879c2a76140726e3fcda0baf90a2e0121433e90a96bb6b21b65acb4cc0a32c691013fb
  873e22308b780c1f3ac598ac0834b13553759cad15b27c91ae49cc32ce5b0befa28afd7964ee28f8ebfd61b235e8efbc3b0cd6943cd1a1e3adabfef053126ca5
)
md5sums=(
  99068b552c3bb49943004e0b2862d77f
  f6417be54a886f92c772e0f77f552c5f
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


