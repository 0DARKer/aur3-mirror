pkgname=python3-aur
pkgver=2012.5.14
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python3-xynexdg)
conflicts=(python-aur)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.5.14.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.5.14.tar.xz.sig
)
sha512sums=(
  113d3556d78d2de58368a1ba28612a782f20fd77b609b9ab03fcaaa53ad227692a398b555761ad64f55c413bd409d2c43b654431984c0b1f6cfd03abca7bd320
  1bff8dd5d5fa981a159bdd3632a7bc9e1fa845563a3bc0f6ee676eb576f149596dc436bc72203e70ffd527d7e555d19aae98d9ba613ad02055e2c18fc696959c
)
md5sums=(
  00c64cfbc7c4aca977b1ac6f09beb5f7
  6ae238c4796356d6f19260f0b797dc79
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
}


