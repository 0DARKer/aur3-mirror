#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2012.12.31
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2012.12.31.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2012.12.31.tar.xz.sig
)
sha512sums=(
  e36fb8776cf3a82adbb50d96f58b660d1d9bd3fd079d69dd77081da22df1f07d93def4c7710b4db0f7f2a280cd348890f3a57f1b4f0e4a7343eb03357967fc84
  6f3efb12021a3f55199a35eda814ea5dadd32c71cdde42ff5883f78ee9e7b96b3e945ae12c4faa4e143eab1a4b2ff4a092e64b261df388be8569fb1e9327d706
)
md5sums=(
  9541b7de340305b5b123a86fe097ffba
  151cf01ea0f3905a0fa94c742eca2424
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


