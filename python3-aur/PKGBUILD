#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2013.3.10
pkgrel=2
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.10.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.10.tar.xz.sig
)
sha512sums=(
  0543529ee2fce3e07a5b64343ea0da5e07a808856abfc27ebece98e0d7807e8404fdf6c628a4b13731360ddc32b4302d158a524af0e7960edd927983545f9d92
  e2748fb51c818160b9e0f2cb807644e3d8c8cb5d4bb5bad205e78ad7c599f8aa6f7e28df3c21c182e29e84035e85497d33bb6440e2d1d1a5f8e3c989a1ef90f9
)
md5sums=(
  894ecbb0ccdb01e1a549c441e7345b96
  85270b97cf44bad6aef38b9704088cac
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


