#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2014.4.20
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2014.4.20.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2014.4.20.tar.xz.sig
)
sha512sums=(
  ac511090ab6b10af39964042741b81def7d977cb01d4257279cb969a2625d08bca3962ee2aa3c5ced8ed022ab1b4404cad0454eaf615f36f472d7d7be486a0dc
  1230577241a51f404041d4747b4d473df8723c9d4e0cf482b44ead12c6f57d2aaaae39fdc42b4e6c1535ae28126b29012bf8cd96a9104a7ef93cb5b92154cc9a
)
md5sums=(
  c94e9d90174f0a566fe4a567965b3953
  e20385adff139ff145e0e23a2a26264b
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


