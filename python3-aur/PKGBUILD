#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2013.3
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.tar.xz.sig
)
sha512sums=(
  f393ddccad52f395364ac27d77f979d39126b05b073f248a3d6db8722a89f3b825f18c2d1f340c165e37acb9da8b0ed567fec3003e4457f9fd112c7ff84de7de
  ac3664f67b27f2b72dc300a6e6cf9c9dc4f4d2040d815c525c8d064d993bf06b9d52eddcf811834cbd2ffcaf7f19c15628c40eff88f370e3639da65efd99773f
)
md5sums=(
  2feaccf009a1848b325cafd84824dfc6
  68b47568580b884ab11c1f5f1d6ad3eb
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


