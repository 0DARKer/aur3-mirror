#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2012.11.10
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
conflicts=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.11.10.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.11.10.tar.xz.sig
)
sha512sums=(
  730070a01c4874ee03753ba458aa5fa60d1c662f822b215254b8fad8ee7dedefd850e571f1ea3a9976ca4dcd1fad70e1eb1ece2d4fcb81d38e3ff7b28501ec13
  6bb2d530d3a33d3239f562b82e50fe123287498e0fa4a3064adbead752255512ee6786ee9a0e905cb846a9f1a3d5d1bab35221e1bab8e5de9321c18a1c705789
)
md5sums=(
  2cf9f4136b3964fc6e78cbee6e491473
  5d58ff0f2a6c17bc68af66bd2c3a6214
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


