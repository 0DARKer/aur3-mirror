#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2014.4
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2014.4.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2014.4.tar.xz.sig
)
sha512sums=(
  c33e9864c68c9af6de7a82b23390baedeeb449c2b933279e0a32a923ab6330fd23feb1624d57046ca08df2b9489cf323b8d74b9ba651b7dc5af20f8f49842e4a
  6b6ea6f1d91cefcc7841b1fb6c40f72965287f1c946006e574dec79584ad4beea28ae56e868516b9802108fd5b36dad021d0d451eb68c7244da319d37fc428cc
)
md5sums=(
  ca9005df44c73b2f6ee1d6a5d9e2bfbe
  2f8d4a26e422d726ea64cc4265d93861
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


