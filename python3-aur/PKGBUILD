#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2011.07.04.3
pkgrel=5
pkgdesc="A Python 3 module to retrieve and cache data from the AUR."
depends=('python3' 'python3-xynexdg')
provides=('python-aur')
replaces=('python-aur')
conflicts=('python-aur')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('5349e461b214d5d031bce24fe5bd8b48')

build() {
  cd "$srcdir/$pkgname"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname/aurquery" "$pkgdir/usr/bin/aurquery"
}
# vim: set ts=2 sw=2 et:
