pkgname=python3-aur
pkgver=2012.5.22
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python3-xynexdg)
conflicts=(python-aur)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.5.22.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.5.22.tar.xz.sig
)
sha512sums=(
  d5d0bf431e987dbf09efe0127c911375780ef7355d6d17a215c68e7d12d663a6dcf7590860bd75bbf0005a7cd8b6a57f5fa5fe5878c5b29080b83eca2f191d34
  938d55e7d56641dc2864770d5a994fbe59ffe6b596c2572241f7722dafc3b4eba30c9184af3f510496a9befe1a85536b76e6b127b421ef97d97625d562650a08
)
md5sums=(
  2e8cb06fcd7bcf6780b3e87bee931365
  dd51a9f426ebddd80d48125a0f5859f2
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
}


