#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2012.02.17.86169
pkgrel=16
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python3-xynexdg)
conflicts=(python-aur)
source=(http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.02.17.86169.tar.xz)
sha512sums=(a21c754b2af5dc67483f45881bcafbc8772d757abc72b197565b35e1d8c216790f774225816430efc71886279d26576e8f2031dbac70cd0786c8f86e1520e94d)
md5sums=(61020b059151d94dc8aa3a3f3623f59b)

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
}


