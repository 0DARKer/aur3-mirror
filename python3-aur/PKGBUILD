pkgname=python3-aur
pkgver=2012.3.20
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python3-xynexdg)
conflicts=(python-aur)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.3.20.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.3.20.tar.xz.sig
)
sha512sums=(
  2f0fd74c6f49d9ed6fc90c64bf24fd32db36ca81ec10c87f3f1ac16efd4429f9ed6a27340efe3511a6950ce30a4a9eb981db5d062943b1f62a37f9660a055e31
  094b06501d4a4a90c794026e10880c58e0b343d3b6aa7b38a1f54b1c2a5e420b780cf007c3e7d06d209ee07bc8409c628ac8ae62b6ae56468ec60dac716ebb46
)
md5sums=(
  42eef0fd487edf7a0631abe10bd162d0
  6f9d760fcb09469295e79351904cf78e
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
}


