#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2013.4
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.4.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.4.tar.xz.sig
)
sha512sums=(
  34ba0fd7cca1be8dc33cdae96e1aaddb4a4a21902843986b0df64ec1c6d28cf2d55c3583a4beaa20c1344a663b9f44add40d57faddcaff7befbed370c47c8a7d
  813faa09b5739d17dc905ef8cf99c63b415b7e6c00716729d3417fe8739a7ea33ff9015086f3c0de120e27a8777ea286f759bedc299b3098c5dda98f3fb2bb8a
)
md5sums=(
  c3cc311ca10841dd3ea1ba0ac316daf9
  a696e8dd96d91e489ca59f01eb27be1b
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


