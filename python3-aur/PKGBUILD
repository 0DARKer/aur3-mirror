#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2013
pkgrel=2
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.tar.xz.sig
)
sha512sums=(
  c093a2c718ac766df11860759e2efb3f4f824eda5e3dc514cae316f1ad9bb8032657a12d99988b0120afa2a3cc87cd5e91559e2cf5c573414121fb59b2c9de9e
  d5affc4d09710034768b70cc88e98f6398acf60bac6a76a6975345cdb1323bb24668d34f871618e98cfbdc8f6bbb649fb0f05f08845e0191c17823b704adb311
)
md5sums=(
  cbba755c6f15cc0eb9f79883450c060b
  98b24187636f92b792299d25ac840647
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
  install -D -m755 "scripts/comment.py" "$pkgdir/usr/bin/aurcomment"
}


