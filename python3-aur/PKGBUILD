#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2013.3.3.2
pkgrel=1
pkgdesc='AUR-related modules and helper utilities (aurploader, aurquery, aurtomatic).'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
replaces=(aurploader)
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.3.2.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2013.3.3.2.tar.xz.sig
)
sha512sums=(
  11c85fa547e926a6d1fa7cd9c13eb3ee01cb821141863c8e0f2d6c7dec756e0fcc7e25e87c7166a5408bce8e0b81e7b3d56c2240e33876359472abfc3fac944a
  9aa7d36cc28aef94e3ebb3261f0299544e8a688820090bc98f58d3e369081433cdafa9c42e3f96cbbf6e610487742afe8e5a68dacd498afb707a83fdddaac45d
)
md5sums=(
  cf29f8d4e4e0e351db82ecf9eb9323dc
  6477279565156871ef8025c0609865e5
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  for aurfoo in aur*
  do
    if [[ -x "$aurfoo" ]]
    then
      install -Dm755 "$aurfoo" "$pkgdir/usr/bin/$aurfoo"
    fi
  done
}


