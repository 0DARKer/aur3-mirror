#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2012.12.24
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python-xdg)
optdepends=('curl: Aurploader support')
conflicts=(aurploader)
provides=(aurploader)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2012.12.24.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/src/python3-aur-2012.12.24.tar.xz.sig
)
sha512sums=(
  c9d2bac5ea5f5e8c07ad69b562295fcd7f581f4d8e6c54df6f0adb55e280f36917867162967639a57e5a640db0d093fc7b33048de0a0e283cd0d5a1f5fdce229
  c6db13eefd9ea1b8d3a4c0bec48e64896b647843b6ac016eb08b2e2f3e5f60cc78b1dc9ba7a2c949a497d86d0ace321bd619f4f4f2a86bded99cc5e102f2b4e7
)
md5sums=(
  d5e25a25444b109280769e66b6d294b9
  83a85c947684d733b6ebb2f79151690a
)

package()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
  install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}


