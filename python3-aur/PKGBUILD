pkgname=python3-aur
pkgver=2012.5
pkgrel=1
pkgdesc='A Python 3 module to retrieve and cache data from the AUR.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/python3-aur"
depends=(python3 python3-xynexdg)
conflicts=(python-aur)
source=(
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.5.tar.xz
  http://xyne.archlinux.ca/projects/python3-aur/archives/python3-aur-2012.5.tar.xz.sig
)
sha512sums=(
  ce1aafebc1af4498c034fe800447963591578ae7943668ea354a3f0238cabda2e11d5c87bf98fa8bb9138a793091c488cc64743d5011d15b301222523eacfb43
  7fa38f50f82467bccff8447c7d0c51cb4cf7b78a704943b24bf92b5a87ddfd0dc2463f22b7365e2b55f7a8637affb5b6b5c42e0fd9f4cb5bceedaa2e7305980c
)
md5sums=(
  448ca94b6399e5bc48c05eda86f64f44
  b3ac9d125ddb5691ea1343cb4ac4cc3e
)

build ()
{
  cd "$srcdir/$pkgname-$pkgver";
  python3 setup.py install --root="$pkgdir"/ --optimize=1;
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
}


