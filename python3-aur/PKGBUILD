#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=python3-aur
pkgver=2011.09.09.40543
pkgrel=1
pkgdesc="A Python 3 module to retrieve and cache data from the AUR."
depends=('python3' 'python3-xynexdg')
provides=('python-aur')
replaces=('python-aur')
conflicts=('python-aur')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.xz)
sha512sums=('98f9323f1c207d06135265032a0f8ec20ca793d4c5f44d09397f72e397b273cee88e924720446b272dcfde4fcccad19c496bf411f2550e18784e6d32b26d50b1')
md5sums=('a2e12a40e19e600fe9bc377e0f3f6257')

build() {
  cd "$srcdir/src"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
}

