# Maintainer: Andrei Gutu
# Contributor: Andrei Gutu
# text : The new mediaplayer from ROSA(based on SMPlayer)

pkgname=rosa-media-player
pkgver=0.951
pkgrel=3
pkgdesc="The new multimedia player(based on SMPlayer) with clean and elegant UI."
arch=(i686 x86_64)
url=http://www.rosalab.ru/blogs/rosa-media-player-10-beta
license=(GPL)
depends=(qt mplayer)
install=rosa-media-player.install

build()
{
  rm rosa-media-player.tar.bz2 2>/dev/null || true
  wget -O rosa-media-player.tar.bz2 "http://svn.mandriva.com/svn/packages/cooker/rosa-media-player/current/SOURCES/rosa-media-player-0.951.tar.bz2"
  bsdtar -xf rosa-media-player.tar.bz2
  cd rosa-media-player-"${pkgver}"/
  make PREFIX=/usr
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}

