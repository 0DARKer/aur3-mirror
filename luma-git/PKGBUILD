# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=luma-git
pkgver=2013.04.05
pkgrel=1
pkgdesc="A feature-full LDAP browser/editor using PyQT - git checkout"
conflicts=('luma' 'luma-svn')
provides=('luma')
url="http://luma.sourceforge.net/"
license=("GPL")
depends=('python2-ldap' 'python2-pyqt')
makedepends=('git')
arch=('i686' 'x86_64')
source=('git://luma.git.sourceforge.net/gitroot/luma/luma')

pkgver() {
	cd luma/
	#git describe --tags --long | sed 's|^[^0-9]*||;s|-|.|g'
	date +%F | sed 's|^[^0-9]*||;s|-|.|g'
}

package() {
	cd luma/

	mkdir ${pkgdir}/usr
	python2 setup.py install --prefix=${pkgdir}/usr
}

sha256sums=('SKIP')
