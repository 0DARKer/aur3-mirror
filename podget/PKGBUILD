# Maintainer: willemw <willemw12@gmail.com>
# Contributor: lp76 <l.peduto@gmail.com>

pkgname=podget
pkgver=0.6.18
pkgrel=1
pkgdesc="Simple podcast aggregrator/downloader optimized for cron"
arch=('any')
url="http://podget.sourceforge.net/"
license=("GPL3")
depends=('wget' 'dos2unix')
source=(http://downloads.sourceforge.net/project/podget/podget/podget-$pkgver/podget-$pkgver.tar.gz)
md5sums=('61877f22b7e46fccda4f604417b5bf1b')

package() {
  cd $pkgname-$pkgver
  make prefix=/usr DESTDIR="$pkgdir" changelog.gz install
  install -dm755 "$pkgdir/usr/share/$pkgname/scripts/"
  install -m644 SCRIPTS/README SCRIPTS/podget-add-feed.README "$pkgdir/usr/share/$pkgname/scripts/"
  install -m755 SCRIPTS/podget-add-feed "$pkgdir/usr/share/$pkgname/scripts/"
}

