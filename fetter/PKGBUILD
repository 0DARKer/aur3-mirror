# Maintainer: dcell <sesshomaru@hushmail.com>

pkgname=fetter
pkgver=1.1
pkgrel=5
pkgdesc="lightweight bash info grabber to display system information and manjaro text on terminal startup"
url="http://manjaroartwork.freeiz.com"
license=('GPL')
arch=('i686' 'x86_64')
depends=('gcc')
source=("https://dl.dropboxusercontent.com/s/z5fg063gtxdfhm5/fetter.zip")
sha512sums=('450fef8b9440ba7a50687cbd9a6b28f90affbdcd7c717673cf44d1d0a3a122f3033a832a8e14985ea7abcc96b030618971e67899235031c1cc7aceb962595fab')
package() {
    mkdir -p $pkgdir/usr/bin
    
    g++ -Wall -g -w -c $srcdir/fetter.cpp -o $srcdir/fetter.o
    g++ -o $pkgdir/usr/bin/fetter $srcdir/fetter.o
    chmod +x $pkgdir/usr/bin/fetter
}
