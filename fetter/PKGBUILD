pkgname=fetter
pkgver=1.1
pkgrel=2
pkgdesc="lightweight bash info grabber to display system information and Arch text on terminal startup"
url="https://aur.archlinux.org/packages/fetter/"
license=('GPL')
arch=('any')
source=("https://dl.dropboxusercontent.com/s/z5fg063gtxdfhm5/fetter.zip")
sha512sums=('24222c0696eb506b3d05175f089f83cb0f51244e0554ae854d9ad50a3af3362c4a4e1d7a0dffce8a9a8fa8642fe33c4686467cc36bcccaed745233a99188947a')
package() {
    mkdir -p $pkgdir/usr/bin
    mv $srcdir/fetter $pkgdir/usr/bin/fetter
    chmod +x $pkgdir/usr/bin/fetter
}
