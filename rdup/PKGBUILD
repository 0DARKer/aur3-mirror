# Contributor: bender02 at gmx dot com
pkgname=rdup
pkgver=1.1.10
pkgrel=1
pkgdesc="Generates a file list suitable for making backups. Processing tool included."
url="http://miek.nl/projects/rdup"
license=("GPL3")
depends=('glib2' 'pcre' 'libarchive' 'nettle')
arch=('i686' 'x86_64')
source=(http://miek.nl/projects/rdup/$pkgname-$pkgver.tar.bz2)
md5sums=('fdf2976c7c7c145dea254b3c00403804')

build() {
  cd $srcdir/$pkgname-$pkgver
#  sed -i 's/ -Werror//' GNUmakefile.in
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}

