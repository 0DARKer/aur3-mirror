# Contributor: Gergely Tamas <dice@mfa.kfki.hu>
# Contributor: bender02 at archlinux dot us
pkgname=rdup
pkgver=1.1.14
pkgrel=2
pkgdesc="Generates a file list suitable for making backups. Processing tool included."
url="http://miek.nl/projects/rdup"
license=("GPL3")
depends=('glib2' 'pcre' 'libarchive' 'nettle')
arch=('i686' 'x86_64')
changelog=ChangeLog
source=(http://miek.nl/projects/rdup/$pkgname-$pkgver.tar.bz2
        libarchive-depr-fix.patch)
md5sums=('aaaaf0518304e3a23aee3594d72e7afc'
         '32b1739a3568fab824b6aed61173f676')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p2 < "$srcdir/libarchive-depr-fix.patch"
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}

