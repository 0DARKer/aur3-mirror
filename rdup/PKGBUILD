pkgname=rdup
pkgver=1.1.12
pkgrel=1
pkgdesc="Generates a file list suitable for making backups. Processing tool included."
url="http://miek.nl/projects/rdup"
license=("GPL3")
depends=('glib2' 'pcre' 'libarchive' 'nettle')
arch=('i686' 'x86_64')
source=(http://miek.nl/projects/rdup/$pkgname-$pkgver.tar.bz2)
md5sums=('b21bf57103ffc17bce44b724628fe5aa')

build() {
  cd $srcdir/$pkgname-$pkgver
#  sed -i 's/ -Werror//' GNUmakefile.in
#  patch -p1 < $srcdir/rdup-1.1.11-unused-variable-n.patch
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}

