# Contributor: bender02 at archlinux dot us
pkgname=rdup
pkgver=1.1.11
pkgrel=2
pkgdesc="Generates a file list suitable for making backups. Processing tool included."
url="http://miek.nl/projects/rdup"
license=("GPL3")
depends=('glib2' 'pcre' 'libarchive' 'nettle')
arch=('i686' 'x86_64')
source=(http://miek.nl/projects/rdup/$pkgname-$pkgver.tar.bz2 rdup-1.1.11-unused-variable-n.patch )
md5sums=('de5c8ff0dc1732f80692e46252025d07'
         'c9e369f26f9d0c5cb4e71a85942f8823')

build() {
  cd $srcdir/$pkgname-$pkgver
#  sed -i 's/ -Werror//' GNUmakefile.in
  patch -p1 < $srcdir/rdup-1.1.11-unused-variable-n.patch
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}

