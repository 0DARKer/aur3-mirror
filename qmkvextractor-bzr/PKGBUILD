# Maintainer: Raizner Evgeniy <razrfalcon@gmail.com>
pkgname=qmkvextractor-bzr
pkgver=0.1
pkgrel=1
pkgdesc="GUI for mkvextract"
arch=('i686' 'x86_64')
license=('GPL')
url=("https://code.launchpad.net/~razrfalcon/+junk/qmkvextractor")
depends=('qt' 'mkvtoolnix')
makedepends=('bzr')
md5sums=() #generate with 'makepkg -g'

_pkgname=qmkvextractor

build() {
  bzr --no-plugins branch $url $_pkgname
  cd $srcdir/$_pkgname
  qmake -config release
  make
  make INSTALL_ROOT="$pkgdir" install
}  
