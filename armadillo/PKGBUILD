# Contributor: shacristo

pkgname=armadillo
pkgver=4.600.4
pkgrel=1
pkgdesc="C++ linear algebra library"
arch=('i686' 'x86_64')
url="http://arma.sourceforge.net/"
license=('MPL 2.0')
depends=('lapack' 'blas' 'hdf5')
makedepends=('cmake' 'boost')
source=("http://downloads.sourceforge.net/sourceforge/arma/$pkgname-$pkgver.tar.gz")
md5sums=('6320ada9f60d4430321efb38f67effd5')

build() {
  ARMA64BITWORD=""
  if [ "$CARCH" == "x86_64" ]; then
      ARMA64BITWORD="ARMA_64BIT_WORD"
      ARMA64LIBDIR="-DINSTALL_LIB_DIR:PATH=/usr/lib"
  fi
  cd "${srcdir}/$pkgname-$pkgver"
  cmake $ARMA64BITWORD $ARMA64LIBDIR -DCMAKE_INSTALL_PREFIX:PATH=/usr .
  make
}

package() {
  cd "${srcdir}/$pkgname-$pkgver"
  make DESTDIR="${pkgdir}" install
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

