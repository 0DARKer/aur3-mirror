pkgname=pornview
pkgver=0.2.0pre1
pkgrel=2
pkgdesc="A lightweight image viewer."
url="http://sourceforge.net/projects/pornview/"
license="GPL"
depends=('gdk-pixbuf')
makedepends=('gcc' 'make' 'tar' 'gzip')
arch=('i686' 'x86_64')
source=('http://ftp.debian.org/debian/pool/main/p/pornview/pornview_0.2pre1.orig.tar.gz')
md5sums=('339fde6d7ff0cc1053abe951601373e6')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
