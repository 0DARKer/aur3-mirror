# Contributor: Cristian Garcia <cristian@archlinux-es.org>

pkgname=firefox-spell-es_cl
pkgver=3.0.3
pkgrel=1
pkgdesc="Spanish (Chile) spellcheker dictionary for Firefox 3"
arch=('i686' 'x86_64')
license=('GPL')
depends=("firefox>=$pkgver")
url="http://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/"
source=(http://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/es_CL.zip)
md5sums=('b75c996c3665d2a73bab21588b9ee258')

build() {
	cd ${startdir}/src
	rm *.txt
	install -D -m644 es_CL.aff ${startdir}/pkg/usr/lib/firefox-${pkgver}/dictionaries/es_CL.aff || return 1
	install -D -m644 es_CL.dic ${startdir}/pkg/usr/lib/firefox-${pkgver}/dictionaries/es_CL.dic || return 1
}
