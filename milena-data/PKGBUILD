# Maintainer: 3ED <krzysztof1987 _at_ gmail _dot_ com>

pkgname=milena-data
pkgver=0.2.50.2
pkgrel=1
pkgdesc="Milena is a Polish speech synthesizer for Linux (data)"
arch=('any')
url="http://milena.polip.com/"
license=('GPL')
source=(http://tts.polip.com/files/$pkgname-$pkgver.tar.gz
        makefile.patch)
sha256sums=('dc57f6eb8c2bbc081d50c913d3f19be901746185ae423b6f4c678de3da026874'
            '6398312a8d0e19d6a4a0550bd247e5beb5e601f7d4c046c4e579b63c248d988b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np0 -i "$srcdir/makefile.patch"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" prefix="/usr" install
}

