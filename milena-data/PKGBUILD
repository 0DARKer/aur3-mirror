# Maintainer: 3ED <krzysztof1987 _at_ gmail _dot_ com>

pkgname=milena-data
pkgver=0.2.44.1
pkgrel=1
pkgdesc="Milena is a Polish speech synthesizer for Linux (data)"
arch=('any')
url="http://milena.polip.com/"
license=('GPL')
source=(http://tts.polip.com/files/$pkgname-$pkgver.tar.gz
        makefile.patch)
sha256sums=('2c7c19a10ee3d21f37a84d6e15b7c3a75bdc4686968624a157fdde071ff77b29'
            '4776dc9ea7c939e9c9e3b0ae0da43b11a548aea9723b86a87f0b688674630499')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -Np0 < "$srcdir/makefile.patch"
  #work normaly, you stupid.. :< :x
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
}

