# Maintainer: Alex Forencich <alex@alexforencich.com>
pkgname=python-usbtmc-git
pkgver=20130622
pkgrel=1
pkgdesc="A Python USBTMC driver for controlling instruments over USB."
arch=('any')
url="https://github.com/alexforencich/python-usbtmc"
license=('MIT')
depends=('python' 'python-pyusb')
makedepends=('git')
provides=('python-usbtmc')

_gitroot='https://github.com/alexforencich/python-usbtmc.git'
_gitname='python-usbtmc'

build() {
  cd "$srcdir"
  msg "Connecting to github.com"

  if [ -d "$_gitname" ] ;then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot"
  fi
  msg "GIT checkout done or server timeout"

  cd "$srcdir/$_gitname"

  git checkout master
}

package() {
  cd "$srcdir/$_gitname"
  python setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

