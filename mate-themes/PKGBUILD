pkgname=mate-themes
pkgver=2011.12.16
pkgrel=1
pkgdesc="Default themes for the MATE desktop"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2' 'gtk-engines')
makedepends=('intltool')
replaces=('gnome-themes')
conflicts=('gnome-themes')
options=('!emptydirs' '!libtool')
url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('189e331429aa4dcb20686ed40a264ff9f5b389eba2f389afcf3f364fbcfdb03a')


build() {
    cd "${srcdir}"

    ./autogen.sh \
        --prefix=/usr \
        --enable-all-themes \
        --disable-placeholders || return 1
    make || return 1
}

package() {
    cd "${srcdir}"
    make DESTDIR="$pkgdir" install || return 1
}
