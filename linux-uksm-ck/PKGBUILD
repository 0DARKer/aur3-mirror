pkgname=linux-uksm-ck
true && pkgname=(linux-uksm-ck linux-uksm-ck-headers)
_kernelname=-uksm-ck
_basekernel=3.3
pkgver=${_basekernel}.4
pkgrel=6
arch=('i686' 'x86_64')
url="https://code.google.com/p/uksm/"
license=('GPL2')
options=('!strip')
_ckpatchversion=1
_ckpatchname="patch-${_basekernel}-ck${_ckpatchversion}"
_uksmname="uksm-0.1.1-for-3.3.4.patch"
_bfqpath="http://algo.ing.unimo.it/people/paolo/disk_sched/patches/3.3.0-v3r3"
source=(
      "http://www.kernel.org/pub/linux/kernel/v3.x/linux-3.3.tar.xz"
      "http://www.kernel.org/pub/linux/kernel/v3.x/patch-${pkgver}.xz"
      "http://ck.kolivas.org/patches/3.0/3.3/${_basekernel}-ck${_ckpatchversion}/${_ckpatchname}.bz2"
      'linux-uksm-ck.preset'
      'config'
      'config.x86_64'
      'change-default-console-loglevel.patch'
      'i915-fix-ghost-tv-output.patch'
      'ext4-options.patch'
      'fix-acerhdf-1810T-bios.patch'
      "http://kerneldedup.org/download/uksm/0.1.1/patches/vanilla/${_uksmname}"
      "http://kerneldedup.org/download/uksm/0.1.1/patches/vanilla/0001-UKSM-let-the-default-uksm_sleep_jiffies-10-msecs.patch"
      "${_bfqpath}/0001-block-cgroups-kconfig-build-bits-for-BFQ-v3r3-3.3.patch"
      "${_bfqpath}/0002-block-introduce-the-BFQ-v3r3-I-O-sched-for-3.3.patch"
       )

sha256sums=(
