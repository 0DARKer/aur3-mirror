# Maintainer: Thomas Holden <thomash@jegerprov.no>
pkgname=r-project
pkgver=3.0.2
pkgrel=1
pkgdesc="R is a free software environment for statistical computing"
arch=('x86_64' 'i686')
url="http://www.r-project.org/"
license=('GPL')
groups=()
depends=('pango' 'cairo' 'gcc-fortran')
makedepends=()
optdepends=('pdflatex: To have manual files in PDF format')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://cran.r-project.org/src/base/R-3/R-3.0.2.tar.gz)
noextract=()
md5sums=('f9a8374736e7650e4848f33e2e3bbee3')

build() {
  cd "$srcdir/R-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/R-$pkgver"

  make DESTDIR="$pkgdir/" install
}
