# Maintainer: Michael Schubert <mschu.dev at gmail>

pkgname=picard-tools
pkgver=1.114
pkgrel=1
pkgdesc="Java-based command-line utilities that manipulate SAM files (supports BAM)"
arch=('any')
url="http://picard.sourceforge.net/"
depends=('java-environment')
license=('GPL')
source=("http://sourceforge.net/projects/picard/files/picard-tools/$pkgver/picard-tools-$pkgver.zip")
noextract=($pkgname-$pkgver)
md5sums=('a31b3f8aa90e47d7b852f462dece88ab')

package() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/share/java"
    unzip -j -o -d "$pkgdir/usr/share/java/$pkgname" $pkgname-$pkgver.zip
}

