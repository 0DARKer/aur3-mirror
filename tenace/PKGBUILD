# Contributor: Piotr Beling <qwak@stud.ics.p.lodz.pl>

pkgname=tenace
pkgver=0.8
pkgrel=1
arch=(i686 x86_64)
pkgdesc="bridge hand viewer and editor with double dummy solver"
url="http://www.df7cb.de/bridge/tenace"
source=($url/source/tenace-$pkgver.tar.gz)
license=('GPL')
depends=(dds gnome-games)
#gnome-games for cards svg (/usr/share/gnome-games-common/cards/bonded.svg)
options=(docs)

build() {
    cd $startdir/src/$pkgname-$pkgver
    ./configure --prefix=/usr				|| return 1
    make						|| return 1
    make install DESTDIR=$startdir/pkg			|| return 1
}

md5sums=('ad1fd009e6943504755f0911268d760f')
