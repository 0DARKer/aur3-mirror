pkgname=caffeine
pkgver=latest
pkgrel=1
pkgdesc="A system applet that allows you to inhibit the screensaver and the sleep power saving mode in an easy way"
arch=(any)
url=https://launchpad.net/caffeine
license=(GPL)
depends=(dbus-python gtk2 pygobject python-notify python-xlib python2 python2-gconf pyxdg)
makedepends=(bzr)
options=('!libtool' '!emptydirs')
install=caffeine.install

build()
{
  bzr branch lp:caffeine
  cd ${pkgname}
  python2 setup.py install --root="${pkgdir}"
}

