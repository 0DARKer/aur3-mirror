# Maintainer: Mark Coolen <mark.coolen@gmail.com>
pkgname=writerperfect
pkgver=0.8.0
pkgrel=1
pkgdesc="libwpd utilities for converting WordPerfect(tm) documents to odt and odg"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/libwpd"
license=('LGPL')
depends=('libwpd>=0.6.1', 'glib2>=2.0.0', 'libgsf>=1.6.0')
source=(http://downloads.sourceforge.net/project/libwpd/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('d0255522926690cfa82a425016da4f80')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
}
