# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>

pkgname=fortune-mod-tbbt
pkgver=0.2
pkgrel=1.1
pkgdesc=" The Big Bang Theory fortune cookies"
url="http://dl.dropbox.com/u/14015956/fortune-mod/fortune-mod-tbbt"
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname-$pkgver.tar.xz)
md5sums=('886fd0d037087b676e8e1dbb4beeb3d8')

build() {
    mkdir $srcdir/$pkgname-$pkgver/
    xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
    mv -i $srcdir/tbbt $srcdir/$pkgname-$pkgver/
    strfile $srcdir/$pkgname-$pkgver/tbbt
    install -d $pkgdir/usr/share/fortune || return 1
    install -m 644 $srcdir/$pkgname-$pkgver/tbbt* $pkgdir/usr/share/fortune \
    || return 1
}

