pkgname=fortune-mod-tbbt
pkgver=0.2
pkgrel=3
pkgdesc=" The Big Bang Theory fortune cookie file"
url="http://fortunemod.tehspork.com"
arch=('any')
license=('unknown')
depends=('fortune-mod')
groups=('fortune-mods')
source=($url/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('886fd0d037087b676e8e1dbb4beeb3d8')

build() {
  cd "$srcdir"
  strfile tbbt tbbt.dat
}

package () {
  install -D -m644 tbbt $pkgname/usr/share/fortune/tbbt
  install -D -m644 tbbt.dat $pkgname/usr/share/fortune/tbbt.dat
}
