# Maintainer: Roberto Catini <roberto.catini@gmail.com>
pkgname=comedilib
pkgver=0.10.1
pkgrel=2
pkgdesc="A user-space library that provides a developer-friendly interface to Comedi devices"
arch=('i686' 'x86_64')
url="http://www.comedi.org"
license=('LGPL')
depends=('bash')
source=("http://www.comedi.org/download/comedilib-$pkgver.tar.gz")
sha512sums=('f476b4fcce676a11390d1b4b8133a87aa8db42ba1243008a6f88afff6fe773dfb123a01ed4dc09e7d7c916f5f8789e752bc42044e62e3e17af86b71211cf89e3')

build() {
	cd $srcdir/$pkgname-$pkgver
	LDFLAGS="-lm"
	./configure --prefix=/usr
	make
}

package() {
        cd $srcdir/$pkgname-$pkgver
	make DESTDIR="$pkgdir/" install
}
