# Maintainer: Ko≈°ava <kosava@archlinux.us>
pkgname=yarock
pkgver=0.9.61
pkgrel=1
pkgdesc="Yarock is Qt4 Modern Music Player with collection browser based on cover art."
arch=('i686' 'x86_64')
url="https://launchpad.net/yarock"
license=('GPL3')
depends=('qt4' 'taglib' 'phonon' 'qjson')
source=(https://launchpad.net/yarock/trunk/0.9.61/+download/Yarock_0.9.61_source.tar.gz yarock.desktop)
md5sums=('ecb32cb4d958acbe246c7956dcb048da'
         '421d8a602ab1674568e5f553c6fc2694')

build() {
   cd $srcdir/Yarock_0.9.61_source
   qmake-qt4 PREFIX="/usr/"
   sed -i '18s/-m64 /-lX11 -lGL /' Makefile 
   make INSTALL_ROOT=$pkgdir install
}