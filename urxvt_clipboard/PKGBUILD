pkgname="urxvt_clipboard"
pkgver=1
pkgrel=1
pkgdesc="clipboard script for urxvt with keyboard shortcuts"
arch=("any")
depends=('rxvt-unicode' 'xsel')
license=("GPL")
url='http://bbs.archlinux.org/viewtopic.php?pid=750951#p750951'
source=("clipboard" )
install=($pkgname.install)

build() {
  install -Dm644 ${srcdir}/clipboard ${pkgdir}/usr/lib/urxvt/perl/clipboard
}

md5sums=('0eabbd06e56303b865436f12a541eae2')
