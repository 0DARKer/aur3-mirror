license=('Perl')
arch=('i686' 'x86_64')
pkgname=perl-xml-dt
pkgver=0.54
pkgrel=1
pkgdesc="A package for down translation of XML to strings"
depends=('perl' 'perl-xml-libxml' 'perl-xml-dtdparser')
url="http://search.cpan.org/~ambs/XML-DT-0.54/"

source=("http://search.cpan.org/CPAN/authors/id/A/AM/AMBS/XML/XML-DT-$pkgver.tar.gz")
md5sums=(f1d9b2c38292f5d6bf5de3b237257cd7)

build() {
  cd $srcdir/XML-DT-$pkgver
  perl Makefile.PL PREFIX=/usr
  make
  make test
}

package() {
  cd $srcdir/XML-DT-$pkgver

  make DESTDIR="$pkgdir/" install
}

