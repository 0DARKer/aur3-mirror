# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-account-payment-sepa
_pkgname=trytond_account_payment_sepa
pkgver=3.2.1
_pkgdir=3.2
pkgrel=1
pkgdesc="The account_payment_sepa module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-account-payment>=3.2' 'trytond-company>=3.2' 'trytond-bank>=3.2' 'trytond-party>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("c6ca316cdf71c49b5c0460796480e325")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}