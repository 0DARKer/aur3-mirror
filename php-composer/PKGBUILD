# Maintainer: Dylan Ferris <dylan@kanux.org>
pkgname=php-composer
pkgver=e982c19
pkgrel=1
pkgdesc="A tool for dependency management in PHP."
arch=('any')
url="http://getcomposer.org/"
license=('MIT')
depends=('php')
install='composer.install'
source=("$url/composer.phar"
        "http://raw.github.com/composer/composer/master/LICENSE")
noextract=("composer.phar"
           "LICENSE")
md5sums=("bae609dccbe8a9bedea9aa05f56ef115"
         "c062868aa96b696aee8d18c0db7d1e8b")

package() {
  cd "$srcdir"
  install -dm755 composer.phar "$pkgdir/usr/bin/composer.phar"
  install -dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

