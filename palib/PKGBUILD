# Maintainer: Alain
pkgname=palib
pkgver=0912XX
pkgrel=2
pkgdesc="An easy-to-use development library and toolset for the Nintendo DS"
license=('GPL2')
arch=('i686' 'x86_64')
url="http://palib-dev.com/"
makedepends=('p7zip')
depends=('devkitarm>=r27' 'dswifi>=0.3.11' 'libnds>=1.4.0' 'libfat-nds>=1.0.6' 'alsa-lib' 'gtk2' 'libgl')
source=('http://palib-dev.com/PAlib0912XX_Beta.7z')
md5sums=('fa36fd98f7810254fd6cfaa270e32cda')

build() {
  cd $startdir/src
  7z x ../PAlib0912XX_Beta.7z
  mkdir -p $pkgdir/opt/devkitpro/
  cp -r PAlib $pkgdir/opt/devkitpro
  chmod -R 755 $pkgdir/opt/devkitpro/PAlib
}

