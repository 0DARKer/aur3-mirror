pre_install() {
  /bin/true
}

post_install() {
    groupadd -r rabbitmq
    useradd -r -g rabbitmq -d /var/lib/rabbitmq -s /bin/false rabbitmq
    chown -R rabbitmq.rabbitmq /var/log/rabbitmq
    chown -R rabbitmq.rabbitmq /var/lib/rabbitmq
}

pre_upgrade() {
  /bin/true
}

post_upgrade() {
    chown -R rabbitmq.rabbitmq /var/log/rabbitmq
    chown -R rabbitmq.rabbitmq /var/lib/rabbitmq
}

pre_remove() {
  /bin/true
}

post_remove() {
    userdel rabbitmq
    groupdel rabbitmq
}

op=$1
shift
$op $*
