# Contributer: giacomogiorgianni@gmail.com 


pkgname=pdfviewer
pkgver=0.5.0
pkgrel=1
pkgdesc="Lightweight Qt-only PDF viewer"
arch=('any')
url="http://opendesktop.org/content/show.php/Pdf+Viewer?content=149637"
license=('GPL')
depends=('qt' 'poppler-qt')
makedepends=('cmake' 'gettext' 'automoc4')
options=('')
source=(http://opendesktop.org/CONTENT/content-files/149637-${pkgname}-${pkgver}.tar.bz2)
sha1sums=('773cd62fbf02bd8744b8090f96f91e931186ccf3')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  qmake ${srcdir}/${pkgname}-${pkgver}/pdfviewer.pro \
  "CONFIG+=LINUX_INTEGRATED" \
  "INSTALL_ROOT_PATH=${pkgdir}"
  #sed -i '49s|"c"|"c;/usr/lib/libcrypto.so.1.0.0"|g' $srcdir/build/CMakeFiles/CMakeCCompiler.cmake
  make
 
}

package() {
#  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p $pkgdir/usr/share/applications/kde4
  cp $srcdir/${pkgname}-${pkgver}/app/data/${pkgname}.desktop $pkgdir/usr/share/applications/kde4/${pkgname}.desktop

  mkdir -p $pkgdir/usr/bin
  cp $srcdir/${pkgname}-${pkgver}/app/${pkgname} $pkgdir/usr/bin/${pkgname}
}
# vim:set ts=2 sw=2 et: