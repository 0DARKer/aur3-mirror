# Maintainer: ValHue <vhuelamo at gmail dot com>
# https://github.com/ValHue/AUR-PKGBUILDs

pkgname=nemo-seahorse
pkgver=2.0.0
_mintrel=petra
pkgrel=1
pkgdesc="An extension for Nemo which allows encryption and decryption of OpenPGP files using GnuPG."
arch=('i686' 'x86_64')
url="https://github.com/linuxmint/nemo-extensions"
license=('GPL2')
groups=('nemo-extensions')
depends=('gconf' 'libcryptui' 'nemo')
makedepends=('intltool')
conflicts=('nemo-seahorse-git')
options=('!libtool' '!emptydirs')
install="${pkgname}.install"

source=("http://packages.linuxmint.com/pool/main/n/${pkgname}/${pkgname}_${pkgver}%2b${_mintrel}.tar.gz")
sha256sums=('befebfb650570e75b05c3a3b3f7fad5be097a8319604bbc21488942fa2a7ab6f')


build() {
	cd "${srcdir}/${pkgname}-${pkgver}+${_mintrel}"

	./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--localstatedir=/var

	make
}

package() {
		cd "${srcdir}/${pkgname}-${pkgver}+${_mintrel}"
		make DESTDIR="${pkgdir}" install
}
