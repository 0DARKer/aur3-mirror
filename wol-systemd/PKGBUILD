# Maintainer: Josh VanderLinden <arch@cloudlery.com>
pkgname=wol-systemd
pkgver=20121220
pkgrel=3
pkgdesc="A systemd unit file for enabling Wake-On-LAN automatically"
arch=('any')
url="https://bitbucket.org/instarch/wol-systemd"
license=('MIT')
depends=('ethtool')
makedepends=('git')
install=wol.install
source=('wol@.service' 'wol.install')
md5sums=('42e61077bb97a5c73bab4c2469fd579d'
         'ce36f92485dd69e350ad36b567335ef6')

_gitroot=https://bitbucket.org/instarch/wol-systemd
_gitname=wol-systemd

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
}

package() {
  install -D wol@.service "${pkgdir}/usr/lib/systemd/system/wol@.service"
}

# vim:set ts=2 sw=2 et:
