# Contributer: giacomogiorgianni@gmail.com 

pkgname=paper
pkgver=0.4
pkgrel=1
pkgdesc="Fast and light-weight comic book viewer"
arch=('i686' 'x86_64')
url="http://opendesktop.org/content/show.php/Paper?content=150505"
license=('LGPL')
depends=('qt>=4.7' 'poppler-qt')
makedepends=('cmake')
optdepends=('p7zip')
#install=${pkgname}.install
#changelog=$pkgname.changelog
source=("http://opendesktop.org/CONTENT/content-files/150505-$pkgname-$pkgver.tar.gz")
md5sums=(9b913df788bc2da53c2ff1d6ce9e3741)

build() {
  cd $srcdir/$pkgname-$pkgver
  lrelease $pkgname.pro
  qmake PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make INSTALL_ROOT="$pkgdir" install
}
