# Contributer: giacomogiorgianni@gmail.com 

pkgname=paper
pkgver=0.5.0
pkgrel=1
pkgdesc="Fast and light-weight comic book viewer"
arch=('i686' 'x86_64')
url="http://opendesktop.org/content/show.php/Paper?content=150505"
license=('LGPL')
depends=('qt>=4.7' 'poppler-qt')
makedepends=('cmake')
optdepends=('p7zip')
#install=${pkgname}.install
#changelog=$pkgname.changelog
source=("http://netcologne.dl.sourceforge.net/project/paper-comic/source/0.5/$pkgname-$pkgver.tar.gz")
md5sums=(76e25ce3a4513b7800d7a782bbfb6e3f)

build() {
  cd $srcdir/$pkgname-$pkgver
  lrelease $pkgname.pro
  qmake PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make INSTALL_ROOT="$pkgdir" install
}
