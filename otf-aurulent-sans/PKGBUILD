# Maintainer: OmeGa <omega at mailoo dot org>
# Contributor:  foalsrock <foalsrock at gmail dot com>

pkgname=otf-aurulent-sans
pkgver=20121130
pkgrel=1
pkgdesc="Aurulent Sans is designed to be used as an interface font on free graphics servers such as X.org."
arch=('any')
url="http://www.dafont.com/aurulent-sans.font"
license=('custom:OFL')
depends=('fontconfig' 'xorg-font-utils')
source=("Aurulent-Sans.zip::http://img.dafont.com/dl/?f=aurulent_sans"
     "OFL.txt")
sha1sums=('d22a292f5aa66708cceb2ead2f341a88859d40cd'
     'e4575441fb9b826e243d7a76622686d7923835cb')

install=otf.install

package() {
  # Fonts
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/AurulentSans-Bold.otf        ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/AurulentSans-BoldItalic.otf  ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/AurulentSans-Italic.otf      ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/AurulentSans-Regular.otf     ${pkgdir}/usr/share/fonts/TTF

  # License
  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 ${srcdir}/OFL.txt    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

# vim:set ts=2 sw=2 et:
