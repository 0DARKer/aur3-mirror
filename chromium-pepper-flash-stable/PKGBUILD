# Maintainer: ava1ar (mail(dot)avatar(at)gmail(dot)com)

pkgname=chromium-pepper-flash-stable
pkgver=11.3.31.115
pkgrel=1
pkgdesc="Google Chrome's Pepper Flash plugin for Chromium (stable version)"
arch=('i686' 'x86_64')
_arch="$CARCH"
[ "$CARCH" = 'i686' ] && _arch='i386'
url="http://www.google.com/chrome"
license=('custom:chrome')
depends=('chromium-browser')
optdepends=('pulseaudio-alsa: For PulseAudio users')
source=(https://dl.google.com/linux/direct/google-chrome-stable_current_${_arch}.rpm)
install=pepper.install
md5sums=('39d703e081a4896b7659a06518d7366f')
[ "$CARCH" = 'i686' ] && md5sums=('c55444fdd9420d0ce24811c25d9335af')

package() {
  install -d "$pkgdir/usr/lib/PepperFlash"
  install -m644 opt/google/chrome/PepperFlash/* "$pkgdir/usr/lib/PepperFlash"
  sed -i "s/flashver=.*/flashver=$pkgver/" "$startdir/pepper.install"
}
