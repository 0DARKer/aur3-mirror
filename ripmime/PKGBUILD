# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=ripmime
pkgver=1.4
pkgrel=1
pkgdesc="A MIME attachment extraction tool."
url="http://www.pldaniels.com/ripmime/"
license="BSD"
depends=( 'glibc' )
makedepends=()
conflicts=()
replaces=()
backup=()
arch=('i686')
install=
source=(http://www.pldaniels.com/ripmime/$pkgname-$pkgver.dev.tar.gz)
md5sums=('f4cbc0fbb39b72571531b093ba8d740f')

build() {
  cd $startdir/src/$pkgname-$pkgver.dev
  make || return 1
  install -d $startdir/pkg/usr/bin
  install -m 0755 ripmime $startdir/pkg/usr/bin
  install -d $startdir/pkg/usr/man/man1
  install -m 0755 ripmime.1 $startdir/pkg/usr/man/man1
}
