# Maintainer: Perttu Ahola <gmail/celeron55>

pkgname=opencamlib-svn
pkgver=477
pkgrel=1
pkgdesc="Multi-Purpose CNC Toolpath Library"
arch=('i686' 'x86_64')
url="http://code.google.com/p/opencamlib/"
license=('GPL3')
makedepends=('subversion' 'python' 'boost' 'cmake')
depends=('python' 'boost')
provides=('opencamlib')
conflicts=('opencamlib')
source=()
md5sums=()

_svntrunk=http://opencamlib.googlecode.com/svn/trunk
_svnmod=opencamlib-read-only

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD
  #
  
  cd "src"
  cmake -DCMAKE_INSTALL_PREFIX=/usr . || return 1
  make ocl || return 1
  make install DESTDIR=$pkgdir PREFIX=/usr || return 1
}
