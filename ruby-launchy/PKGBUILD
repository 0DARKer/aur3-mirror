# Maintainer: Emiliano Vavassori <syntaxerrormmm(at)gmail.com>
pkgname=ruby-launchy
_gemname=launchy
pkgver=0.4.0
pkgrel=1
pkgdesc="An helper class for launching cross-platform applications in a fire and forget manner"
arch=(any)
url="http://copiousfreetime.rubyforge.org/launchy/"
license=('custom:ISCL')
depends=('ruby>=1.9.2' 'ruby-configuration>=0.0.5')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('951dc54983c29dde427748ce11189d8b')

package() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_gemname}-${pkgver}.gem
}
