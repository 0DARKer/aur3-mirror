# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=stendhal
pkgver=0.87
pkgrel=1
pkgdesc="An online multiplayer adventure game."
arch=('i686' 'x86_64')
url="http://stendhal.game-host.org/"
license=('GPL')
depends=('java-runtime')
source=(http://downloads.sourceforge.net/arianne/${pkgname}-FULL-${pkgver}.2.zip)
md5sums=('9ab4f6f443780ac0e5dc105c5e467a45')

build() {
	/bin/true
}

build() {
	cd ${srcdir}

	mkdir -p ${pkgdir}/usr/{bin,share/${pkgname}}
	cp -R * ${pkgdir}/usr/share/${pkgname}
	echo -e "#!/bin/bash\njava -jar /usr/share/${pkgname}/${pkgname}-${pkgver}.jar" >> ${pkgdir}/usr/bin/${pkgname}
	chmod +x ${pkgdir}/usr/bin/${pkgname}
}
