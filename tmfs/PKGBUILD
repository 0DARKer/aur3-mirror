# Maintainer: Alexandre Bique <bique.alexandre@gmail.com>

pkgname=tmfs
pkgver=2
pkgrel=2
pkgdesc="Time Machine FS (fuse)"
arch=('i686' 'x86_64')
url="http://github.com/babali/tmfs"
license=('GPL3')
makedepends=('cmake>=2.8')
depends=('fuse' 'boost>=1.46.0')
options=()
source=(https://github.com/downloads/babali/tmfs/tmfs-${pkgver}.tar.xz)
sha1sums=('7470c46344e7d62a2140bd593d0917f7be2c2ce8')

build() {
  cd ${srcdir}/tmfs-${pkgver}
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd ${srcdir}/tmfs-${pkgver}/build
  DESTDIR=${pkgdir} make install
}
