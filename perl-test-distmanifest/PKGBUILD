pkgname='perl-test-distmanifest'
pkgver='1.009'
pkgrel='1'
pkgdesc="Verify MANIFEST as an author test"
arch=('any')
url='http://search.cpan.org/dist/Test-DistManifest'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-module-manifest>=0.07' 'perl-test-nowarnings>=0.084')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/J/JA/JAWNSY/Test-DistManifest-1.009.tar.gz')
md5sums=('014331ccac1b3efe49f0a55fc59e552d')

build() {
  DIST_DIR="${srcdir}/Test-DistManifest-1.009"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Build.PL --installdirs=vendor --destdir="$pkgdir" &&
    perl Build &&
    perl Build test &&
    perl Build install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

