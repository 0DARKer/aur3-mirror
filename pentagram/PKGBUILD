pkgname=pentagram
pkgver=2009.11.08
pkgrel=1
pkgdesc="Pentagram is a project aiming to create an Ultima 8 engine for use on modern operating systems, including Linux, Mac OS X and Windows."
arch=(i686 x86_64)
url="http://pentagram.sourceforge.net/"
license=('GPL')
depends=('sdl' 'sdl_ttf' 'zlib' 'libpng')
source=(http://www.math.leidenuniv.nl/~wpalenst/cvs/${pkgname}-svn.tar.gz)
md5sums=('46351dbe298298ac163ccda81ff952f6')

build() {
  cd ${srcdir}/${pkgname}

  ./bootstrap
  ./configure --bindir=/usr/bin

  make || return 1
  make DESTDIR=${pkgdir} install

} 
