pkgname=sqliteodbc
pkgver=0.87
pkgrel=1
pkgdesc="The SQLite Database Engine provides a lightweight C library to access database files using a large subset of SQL92."
url="http://www.ch-werner.de/sqliteodbc"
license="custom"
arch=('i686' 'x86_64')
depends=('unixodbc' 'sqlite3')
source=(${url}/${pkgname}-${pkgver}.tar.gz ${url}/license.terms http://documentation.openoffice.org/HOW_TO/data_source/SQLite.pdf)

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr/lib
    make || return 1
    mkdir -p "$startdir/pkg/usr/lib"
    make DESTDIR="$startdir/pkg" install || return 1
    install -Dm644 $srcdir/license.terms $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1
    install -Dm644 $srcdir/SQLite.pdf $pkgdir/usr/share/doc/$pkgname/SQLite.pdf || return 1
}
md5sums=('2a11ce4cc455ad7846c7bd79562fd1e7'
         '4ded146db0231bd2c87dc407c25537b3'
         'bb8d14815ed44f4b8eb5d2ab515996dd')
