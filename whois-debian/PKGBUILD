pkgname=whois-debian
pkgver=5.0.11
pkgrel=1
pkgdesc="The whois client by Marco d'Itri"
arch=('i686' 'x86_64')
url="http://www.linux.it/~md/software/"
license=('GPL')
depends=('libidn')
makedepends=('perl')
conflicts=('whois')
provides=('whois')
source=(http://ftp.debian.org/debian/pool/main/w/whois/whois_${pkgver}.tar.gz config.h.patch)
md5sums=('942e2d90b0bcd7d22765c8e3344fe118' '0a46a322163146e27fded6ffef9a2b56')

build() {
  cd $srcdir/whois-$pkgver
  patch -p0 -i ../../config.h.patch
  make prefix=/usr HAVE_LIBIDN=1
  make prefix=/usr BASEDIR=$pkgdir install-whois
}
