# udisksvm script for automounting removable media
# It is GUI oriented using Traydevice in AUR to un-mount/re-mount media
# and show an icon in the systray (so one is needed)
# a default.xml configuration file is provided to be used by Traydevice
# 

# Maintainer: Bernard Baeyens (berbae)
pkgname=udisksvm
pkgver=1.0
pkgrel=2
pkgdesc="GUI oriented automounting script for removable media"
arch=("any")
url="https://bbs.archlinux.org/viewtopic.php?id=112397"
license=("GPL")
depends=("bash>=4.0" "udisks" "traydevice")
install=udisksvm.install
changelog=ChangeLog
source=("https://github.com/berbae/udisksvm/raw/8f4576fa8a883625ba37b669eb90ec661fd99324/README"
        "https://github.com/berbae/udisksvm/raw/8f4576fa8a883625ba37b669eb90ec661fd99324/default.xml"
        "https://github.com/berbae/udisksvm/raw/8f4576fa8a883625ba37b669eb90ec661fd99324/$pkgname-$pkgver.sh")

md5sums=("22d1ad504f470629ec464e7f8ff4b649"
         "a47ca8c1178655eeeb7ffecee77a978f"
         "a0efb96d6e9fd4a7aa2cb60437723f00")

sha256sums=("8fb3e47fefd571fe3c5cb2dd7aeb6c6144e5ad79e8cb5469817367bf924a7cd4"
            "e483f9d4b0bcddcc97041655642f5ee23bf054e4ba87719b79c059d482bae417"
            "a9ce1c59a2898cc79ba6d95d892538da62edac0cc1148a18043289a886cd5056")

package() {
  cd $srcdir
  install -D -m 644 README ${pkgdir}/usr/share/udisksvm/README
  install -D -m 644 default.xml ${pkgdir}/usr/share/udisksvm/default.xml
  install -D -m 755 $pkgname-$pkgver.sh ${pkgdir}/usr/bin/udisksvm
}

