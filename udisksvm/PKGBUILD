# udisksvm script a UDisks wrapper.
# It automounts non optical devices (that can be disabled)
# It is GUI oriented with Traydevice to show an icon in system tray
# and a write-click menu to un-mount/re-mount,... media
# A default configuration file for Traydevice is provided :
# /usr/share/udisksvm/udisksvm.xml
# 

# Maintainer: Bernard Baeyens (berbae)  <berbae52 at sfr dot fr>
pkgname=udisksvm
pkgver=1.10
pkgrel=1
pkgdesc="GUI oriented automounting script for removable media"
arch=("any")
url="https://bbs.archlinux.org/viewtopic.php?id=112397"
license=("GPL")
depends=("python" "gobject-introspection" "traydevice")
optdepends=('ntfs-3g: for mounting ntfs disk with write option')
install=udisksvm.install
backup=("usr/share/udisksvm/$pkgname.xml")
changelog=ChangeLog
source=("https://github.com/berbae/udisksvm/raw/master/$pkgname-$pkgver.tar.gz")

sha1sums=("bc1cc0b7ee925bc6149fc1b2e73162011c9660a0")

package() {
  cd $srcdir
  install -D -m 644 README ${pkgdir}/usr/share/udisksvm/README
  install -D -m 666 $pkgname.xml ${pkgdir}/usr/share/udisksvm/$pkgname.xml
  install -D $pkgname-$pkgver.py ${pkgdir}/usr/bin/udisksvm
}

# vim:set ts=2 sw=2 et:
