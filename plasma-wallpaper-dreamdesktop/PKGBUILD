# Maintainer: dieghen89 <dieghen89@gmail.com>
pkgname="plasma-wallpaper-dreamdesktop"
pkgver="0.2.0"
pkgrel=1
pkgdesc="An innovative animated desktop wallpaper for KDE"
arch=(any)
url="http://www.jarzebski.pl/projekty/dreamdesktop.html"
license=('GPL')
groups=(kde)
depends=('kdelibs' 'ffmpeg')
makedepends=('automoc4' 'cmake')
optdepends=()
install=
source=("http://www.jarzebski.pl/dreamdesktop/$pkgname-$pkgver.tar.bz2")
md5sums=('528445182984c448f9a9bfdd944cafd2')

build() {
  cd "$srcdir/$pkgname"
  mkdir build
  cd build/
  cmake .. -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix=/usr`
  make
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
