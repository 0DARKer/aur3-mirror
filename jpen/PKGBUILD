# Contributer: N30N <archlinux@alunamation.com>
# Contributer: niQo <niqooo@gmail.com>

pkgname=jpen
pkgver=2.100101
pkgrel=1
pkgdesc="A Java library for accessing pen/digitizer tablets and pointing devices."
url="http://jpen.wiki.sourceforge.net/"
license=("GPL" "LGPL")
arch=("i686" "x86_64")
depends=()
makedepends=("openjdk6")
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver/./-}-src.zip)
md5sums=("cf40df02d7555e3322b518ddd4690550")
build() {
	cd ${srcdir}/${pkgname}-${pkgver/./-}/src/main/c/linux

	msg "Starting build process."
	gcc ${CFLAGS} \
		-I/usr/lib/jvm/java-6-openjdk/include \
		-I/usr/lib/jvm/java-6-openjdk/include/linux \
		-Wall -fpic -shared -o libjpen-2.so -lXi *.c || return 1

	install -D -m755 libjpen-2.so ${pkgdir}/usr/lib/libjpen-2.so
}

# vim: set noet ff=unix
