# Contributor: Moritz Wilhelmy
pkgname=fudev 
pkgver=1
pkgrel=1
pkgdesc="fake udev (useful for systems with a prebuilt static /dev, e.g. on vservers)"
arch=('any')
url='http://this.package.really.has.no.homepage.but.stupid.aur.wants.me.to.add.one.com'
license=('Public Domain')
provides=('udev=999999')
conflicts=('udev')

build() {
  cd "$startdir/pkg"
  mkdir sbin
  ln -s /bin/true sbin/udevadm
  ln -s /bin/true sbin/udevd 
}
# vim:set ts=2 sw=2 et:
