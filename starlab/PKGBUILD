pkgname=starlab
pkgver=4.4.4
pkgrel=1
pkgdesc="Starlab is a software package for simulating the evolution of dense stellar systems and analyzing the resultant data"
arch=('i686' 'x86_64')
license=('GPLv2')
depends=('perl')
makedepends=('gcc-fortran')
url="http://www.sns.ias.edu/~starlab/index.html"
source=("http://www.sns.ias.edu/~starlab/download/starlab-$pkgver.tar.gz")
md5sums=('1143741aee7d57988c6db715c9fa05da')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR=$pkgdir install

}

