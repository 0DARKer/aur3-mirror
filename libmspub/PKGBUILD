# Maintainer: Simone Sclavi 'Ito' <darkhado@gmail.com>

pkgname=libmspub
pkgver=0.0.2
pkgrel=1
pkgdesc="Microsoft Publisher file format parser library"
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/libreoffice/libmspub/"
license=('GPL2' 'LGPL2.1' 'MPL')
depends=('libwpg')
options=(!libtool)
makedepends=('boost' 'doxygen')
source=(http://cgit.freedesktop.org/libreoffice/libmspub/snapshot/${pkgname}-${pkgver}.tar.gz)
md5sums=('2c6ed3f6baa63d91fdc1abd95051869d')

build() {
    cd ${pkgname}-${pkgver}
    ./autogen.sh
    ./configure --prefix=/usr
    make
}
package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=$pkgdir install
}
