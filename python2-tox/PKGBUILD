# Maintainer: Sebastian Wiesner <lunaryorn googlemail com>
pkgname=python2-tox
pkgver=1.0
pkgrel=1
pkgdesc="Python virtualenv management and testing tool"
arch=('any')
url="http://codespeak.net/tox"
license=('GPL2')
depends=(python2-py 'python-virtualenv>=1.6.1')
source=("http://pypi.python.org/packages/source/t/tox/tox-${pkgver}.zip"
        remove_argparse_dependency.patch)
md5sums=('9170705183ddf2f4b379d16d52196b71'
         '8212ec8188ca347a00a398cbb72a4456')

build() {
    cd "$srcdir/tox-$pkgver"
    patch -p1 < "$srcdir/remove_argparse_dependency.patch" || return 1
    python2 setup.py install --root="$pkgdir" -O1 || return 1
}
