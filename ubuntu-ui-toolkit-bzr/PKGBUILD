# Maintainer: Riccardo Ferrazzo <f.riccardo87@gmail.com>

pkgname=ubuntu-ui-toolkit-bzr
pkgver=278
pkgrel=4
pkgdesc="Ubuntu SDK preview for Ubuntu application development"
arch=('i686' 'x86_64')
url="https://launchpad.net/~ui-toolkit/+archive/ppa"
license=('GPL')
depends=('qtcreator' 'qt5')
makedepends=('bzr')
options=(!makeflags)
source=('dirs.patch')
md5sums=('2adca2e248ca05bbb21b95a357c41df1')

_bzrtrunk='https://code.launchpad.net/~ui-toolkit/ubuntu-ui-toolkit/trunk'
_bzrmod=${pkgname}

build() {
  export INCLUDE="/usr/include"

  cd "$srcdir"
  msg "Connecting to Bazaar server...."

  if [[ -d "$_bzrmod" ]]; then
    cd "$_bzrmod" && bzr --no-plugins pull "$_bzrtrunk" -r "$pkgver"
    msg "The local files are updated."
  else
    bzr --no-plugins branch "$_bzrtrunk" "$_bzrmod" -q -r "$pkgver"
  fi

  msg "Bazaar checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_bzrmod-build"
  cp -r "$srcdir/$_bzrmod" "$srcdir/$_bzrmod-build"
  cd "$srcdir/$_bzrmod-build"

  patch -p0 -i $srcdir/dirs.patch

  qmake-qt5 -r ubuntu-sdk.pro 
  make --quiet
}

package() {
  cd "$srcdir/$_bzrmod-build"
  make INSTALL_ROOT=${pkgdir} install || return 1
}

# vim:set ts=2 sw=2 et:
