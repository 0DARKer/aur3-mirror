pkgname=ruby-pony
_gemname=pony
pkgver=1.1
pkgrel=1
pkgdesc="A sweetly simple Ruby gem for sending Email"
arch=('any')
url="http://github.com/benprew/pony"
license=('MIT')
depends=('ruby' 'ruby-mail>=2.0')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('0eb2a130cf834355ed88818591fc550a')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -f -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
