# Maintainer: Mort Yao <mort.yao@gmail.com>

pkgname=acl2
pkgver=6.4
pkgrel=1
pkgdesc='ACL2 theorem prover.'
url='http://www.cs.utexas.edu/users/moore/acl2/'
license=('BSD')
depends=('sbcl')
arch=('i686' 'x86_64')
source=('http://www.cs.utexas.edu/users/moore/acl2/v6-4/distrib/acl2.tar.gz')
md5sums=('f1630ad41eac5162d9c03ed58f984927')

build() {
  cd $srcdir/acl2-sources
  make LISP=`which sbcl`
}

package() {
  cd $srcdir/acl2-sources
  install -d -m755 $pkgdir/opt/acl2
  cp -r . $pkgdir/opt/acl2
}
