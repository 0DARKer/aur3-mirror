# Maintainer: Mort Yao <mort.yao@gmail.com>

pkgname=acl2
pkgver=6.5
pkgrel=1
pkgdesc='ACL2 theorem prover.'
url='http://www.cs.utexas.edu/users/moore/acl2/'
license=('BSD')
depends=('sbcl')
arch=('i686' 'x86_64')
install=$pkgname.install
source=('http://www.cs.utexas.edu/users/moore/acl2/v6-5/distrib/acl2.tar.gz' 'acl2')
md5sums=('70fcf9bac3baca4abfd74fa6035613ff' '6b092e8b98e399dc812f36445f1a9183')

build() {
  cd $srcdir/acl2-sources
}

package() {
  install -Dm755 acl2 $pkgdir/usr/bin/acl2

  cd $srcdir/acl2-sources
  install -d -m755 $pkgdir/opt/acl2
  cp -r . $pkgdir/opt/acl2
}
