# Maintainer: Sebastian Wiesner <lunaryorn googlemail com>
pkgname=pastemacs
pkgver=0.3
pkgrel=3
pkgdesc="Access pocoo pastebin from emacs"
arch=('any')
url='http://pypi.python.org/pypi/pastemacs/'
license=('GPL2')
depends=('python2' 'pymacs' 'lodgeitlib')
makedepends=('setuptools')
source=( "http://pypi.python.org/packages/source/p/$pkgname/$pkgname-${pkgver}.tar.gz" )
md5sums=('85b2c809611d52df1928ea0baf185ff4')

build()
{
  cd "$srcdir/$pkgname-$pkgver" || return 1
  python2 setup.py install --root="$pkgdir" -O1
}
