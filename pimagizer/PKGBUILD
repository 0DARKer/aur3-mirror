pkgname=pimagizer
pkgver=0.4.1
pkgrel=2
pkgdesc="A Python program with GTK ui created to resize images"
arch=('any')
url="http://cambiadeso.es/proyectos/pimagizer"
license=('GPL3')
#groups=()
depends=('python' 'python2-pillow' 'desktop-file-utils' 'pygobject-devel')
# makedepends=()
#backup=()
install=pkgname.install
options=(!emptydirs)
source=(https://launchpad.net/$pkgname/trunk/0.4/+download/$pkgname-$pkgver.tar.gz)
md5sums=(0e87703b349ffbd8e9bb7e515baed877)

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

