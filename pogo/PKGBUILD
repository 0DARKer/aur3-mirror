# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=pogo
pkgver=0.4
pkgrel=1
pkgdesc="Probably the simplest and fastest audio player for Linux"
arch=('any')
url="https://launchpad.net/pogo/"
license=('GPL')
depends=('pygtk' 'dbus-python' 'mutagen' 'python-imaging' 'gstreamer0.10-python')
optdepends=('python-notify: notifications support')
install="$pkgname.install"
source=("${url}trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz")
md5sums=('162f997f4d355945d9f9d5414678c515')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # python2 fix
  sed "s_\(python\).*_\12_" -i $pkgname.py src/__init__.py
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
