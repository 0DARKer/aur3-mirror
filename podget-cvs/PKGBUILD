# Maintainer: willemw <willemw12@gmail.com>

_pkgname=podget
pkgname=$_pkgname-cvs
pkgver=20140724 
pkgrel=1
pkgdesc="Simple podcast aggregrator/downloader optimized for cron"
arch=('any')
url="http://podget.sourceforge.net/"
license=("GPL3")
depends=('wget' 'dos2unix')
makedepends=('cvs')
provides=($_pkgname)
conflicts=($_pkgname)
#source=()
#md5sums=('SKIP')

pkgver() {
  date +%Y%m%d
}

prepare() {
  cvs -z3 -d:pserver:anonymous:@podget.cvs.sourceforge.net:/cvsroot/podget co -P podget
}

package() {
  cd $_pkgname
  make DESTDIR=$pkgdir changelog.gz install prefix=/usr
}

