# Maintainer: Christoph Haag <haagch@studi.informatik.uni-stuttgart.de>
pkgname=ibex-git
pkgver=602.8cdc8aa
pkgrel=1
pkgdesc="Ibex - 3D Virtual Reality Desktop/Compositing Manager for X11/Linux, Windows and Mac OS (for e.g. Oculus Rift)"
arch=('i686' 'x86_64')
url="https://bitbucket.org/druidsbane/ibex/overview"
license=('GPL')
depends=('mesa')
makedepends=('irrlicht' 'freeglut' 'glew' 'tinyxml')

_gitname="ibex"
_builddir="build"

source=("$_gitname::git+https://bitbucket.org/druidsbane/ibex.git"
        "OculusSDK::git+https://github.com/jherico/OculusSDK.git#branch=unstable"
        "glfw::git+https://github.com/jherico/glfw.git"
        "glew::git+https://github.com/jherico/glew.git"
        'fix_install_prefix.diff'
        'ibex-startscript')

#        "http://sixense.com/SDK/sixenseSDK_linux_OSX.zip")
# optionally (???) download sixenseSDK_linux_OSX.zip from http://sixense.com/linuxsdkdownload, put it in the directory, then comment in this line and the md5sum

# not in AUR I think
# optdepends=('blender-ogre-exporter: to convert models to Ogre meshes: https://code.google.com/p/blender2ogre/')

prepare() {
        cd "$srcdir/OculusSDK"
        git submodule init
        git config submodule.3rdParty/glfw.url ${srcdir}/glfw
        git config submodule.3rdParty/glew.url ${srcdir}/glew
        git submodule update

  msg "Patching ibex CMakeFiles.txt..."
  cd ${srcdir}/${_gitname}
  # it doesn't respect -DCMAKE_INSTALL_PREFIX, this patches CMakeFiles.txt to let "make install" install to $CMAKE_INSTALL_PREFIX/usr/share/
  # https://bitbucket.org/druidsbane/ibex/issue/3/take-cmake_install_prefix-into-account
  git apply ${srcdir}/fix_install_prefix.diff

  # workaround for https://bitbucket.org/druidsbane/ibex/issue/6/linux-build-issues#comment-8206608
  # probably segfaults
  sed "s/     dpy, root);/     dpy, root, 0);/g" -i ${srcdir}/ibex/x11/x11.cpp

  # why static? that doesn't really work?
  sed "s/STATIC/SHARED/g" -i ${srcdir}/OculusSDK/LibOVR/CMakeLists.txt

  sed "s/ovr/OculusVR/g" -i "$srcdir/ibex/CMakeLists.txt"
}

build() {

  cd "$srcdir/OculusSDK"
  msg "Starting make for OculusSDK..."
  mkdir -p build; cd build 
  cmake ..
  make all


  # maybe delete it every time for a fresh build?
  #rm -rf ${srcdir}/${_builddir}
  mkdir -p ${srcdir}/${_builddir}
  cd ${srcdir}/${_builddir}

  msg "Starting make for ibex..."

  #src/OculusSDK/LibOVR/Include/OVR.h
  #OculusSDK/build/LibOVR/libOculusVR.a
  # why????

  export C_INCLUDE_PATH="$srcdir/OculusSDK/LibOVR/Include/:$srcdir/ibex/"
  export CPLUS_INCLUDE_PATH="$srcdir/OculusSDK/LibOVR/Include/:$srcdir/ibex/"


  #cp "$srcdir/OculusSDK/build/LibOVR/libOculusVR.so" "$srcdir/OculusSDK/build/LibOVR/libovr.so"
  cmake ../ibex \
         -DCMAKE_INSTALL_PREFIX=/usr \
         -DCMAKE_BUILD_TYPE=Release \
         -DOCULUS_LIBRARY_DIR="$srcdir/OculusSDK/build/LibOVR/" \

#         -DOCULUS_INCLUDE_DIR="$srcdir/OculusSDK/LibOVR/Include/" \
         

#-DOCULUS_LIBRARY_DIR="$srcdir/OculusSDK/build/LibOVR/libOculusVR.a"

  make
}

package() {
  cd ${srcdir}/${_builddir}
  make DESTDIR="$pkgdir/" install
  install -m 755 -d ${pkgdir}/usr/bin/
  install -m 755 ${srcdir}/ibex-startscript ${pkgdir}/usr/bin/ibex

  install -d "$pkgdir/usr/share/ibex/lib/"
  install -m 644 "$srcdir/OculusSDK/build/LibOVR/libOculusVR.so" "$pkgdir/usr/share/ibex/lib/"
}

pkgver() {
  cd ${srcdir}/${_gitname}
  echo $(git rev-list --count master).$(git rev-parse --short master)
}


md5sums=('SKIP'
         'SKIP'
         'SKIP'
         'SKIP'
         'f94530019c83a871e2028a6221713791'
         'f76371c92991e89910f0fef0f7f129b6')
