# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdebase4-workspace-svn
pkgver=1212576
pkgrel=1
pkgdesc="KDE4 Base Workspace Programs"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('polkit-kde' 'kdepimlibs4-svn' 'kdepim4-runtime-git' 'kdebase4-runtime-svn' 'qimageblitz' 'libxcomposite' 
	 'lm_sensors' 'libxklavier' 'libxdamage' 'xorg-utils' 'libxrandr' 'libraw1394' 'libqalculate')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdebindings-python' 'networkmanager'
	     'kdebindings-python' 'docbook-xsl' 'boost' 'subversion')
provides=(kdebase-workspace)
conflicts=(kdebase-workspace)

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdebase/workspace
_svnmod=kdebase-workspace

build() {
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/usr \
                -DWITH_Xmms=OFF \
                -DWITH_Googlegadgets=OFF \
                -DWITH_QEdje=OFF \
                -DWITH_PolkitQt=OFF
  make
}

package() {
	cd $srcdir/$_gitname-build
	make DESTDIR=$pkgdir install
	rm -rf $startdir/src/$_svnmod-build
}

