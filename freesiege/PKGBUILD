# Contributor: MCMic <come.bernigaud@laposte.net>

pkgname=freesiege
pkgver=1.0
pkgrel=4
pkgdesc="a tetris like war game"
arch=('i686' 'x86_64')
url="https://github.com/MCMic/freesiege"
license=('GPL')
depends=('sdl' 'sdl_image' 'sdl_ttf')
makedepends=('make' 'cmake')
conflicts=()
source=('https://github.com/downloads/MCMic/freesiege/freesiege-1.0-src.tar.gz')
md5sums=('b01f16b4dc2ffdb342ed36e9c9c296e0')

build() {
	cd $srcdir/freesiege

	cmake -DCOMPILE_FOR_PACKAGE=ON -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make install DESTDIR=$pkgdir
}
