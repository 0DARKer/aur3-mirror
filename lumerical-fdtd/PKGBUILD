# Maintainer: Aaron Ali <t0nedef@causal.ca>
pkgname=lumerical-fdtd
pkgver=8.0.4
pkgrel=1
pkgdesc="FDTD simulation software. A 30-day trial license key can be procured from the vendor."
arch=('x86_64')
url="http://www.lumerical.com/"
install=install
license=('custom')
source=(
	'http://aur.causal.ca/archlinux/lumerical/FDTD-8.0.4-1.rhel5.x86_64.rpm'
	'http://aur.causal.ca/archlinux/lumerical/aksusbd-1.15-1.i386.rpm'
	'arch-rc.d.patch'
	'lumerical-fdtd'
	'LICENSE'
)
depends=( 'libpng12' 'libjpeg6' 'libtiff3' 'expat' )
makedepends=('rpmextract')
package() {
	cd $pkgdir
	rpmextract.sh ${srcdir}/FDTD-8.0.4-1.rhel5.x86_64.rpm
	rpmextract.sh ${srcdir}/aksusbd-1.15-1.i386.rpm
	patch -i ../arch-rc.d.patch etc/init.d/aksusbd
	mv etc/init.d etc/rc.d
	mkdir usr/lib
	ln -s libexpat.so usr/lib/libexpat.so.0
	install -Dm755 ${srcdir}/lumerical-fdtd ${pkgdir}/usr/bin/lumerical-fdtd
	install -Dm644 ${srcdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
#
md5sums=('a47c38daf6ef745d6171ef33d2440c8e'
         '21eb7c7ecc5e27f713d3bd1fe5690ff4'
         '38f0914eb035919ee54843e05cab8d32'
         '4b906c2dcf7c72aa4445aa38a35a4720'
         '73234cc3776a656f53fc82e8eb92117b')
