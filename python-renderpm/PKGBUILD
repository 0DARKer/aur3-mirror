pkgname=python-renderpm
pkgver=1.01
_realversion=1.01-20061223
pkgrel=1
pkgdesc="Python library to generate bitmap images."
depends=('python' 'glibc')
source=(http://www.reportlab.org/daily/renderPM-$pkgver-daily-unix.tgz)
url="http://www.reportlab.org/downloads.html#renderPM"

md5sums=('f36182609b0d584ac7e1d7aefb8fd7ca')

build() {
    cd $startdir/src/renderPM-${_realversion}/renderPM
    python setup.py install --root=$startdir/pkg
}
