# $Id$
# Contributor: filip <fila@pruda.com>

pkgname=esets
pkgver=3.0.22
pkgrel=1
pkgdesc="ESET Mail Security provides comercial Antivirus and Antispam."
arch=('i686' 'x86_64')
license=(ESET)
url="http://www.eset.com/"
depends=()
backup=(etc/esets/esets.cfg etc/esets/anti-spam/spamcatcher.conf)
install=$pkgname.install
options=()


[ "$CARCH" = "i686"   ] && _arch=i386
[ "$CARCH" = "x86_64" ] && _arch=amd64


noextract=(esets-$pkgver.${_arch}.tgz)
source=(esets-$pkgver.${_arch}.tgz esets)
[ "$CARCH" = "i686"   ] && md5sums=('72dcdfb6a2c2fed13c0ed84eb16c394a' '263784d759e23ecf5c8cb5d468adacea')
[ "$CARCH" = "x86_64" ] && md5sums=('850ddada1a517c62eaea51f1c4a616f7' '263784d759e23ecf5c8cb5d468adacea')

build() {
  cd $startdir/pkg
  tar xfz $startdir/src/esets-$pkgver.${_arch}.tgz

  rm -rf etc/init.d
  install -D -m755 $startdir/src/esets etc/rc.d/esets

}
