# Maintainer: Christian BÃ¼hler <christian.buehler@ipoplan.de>
pkgname=coin-hg
pkgver=11309
pkgrel=1
pkgdesc="OpenGL-based, 3D graphics library"
arch=('x86' 'x86_64')
url="https://bitbucket.org/Coin3D/coin"
license=('BSD')
makedepends=('mercurial')
conflicts=('coin')

_hgroot=https://bitbucket.org/Coin3D
_hgrepo=coin

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [[ -d "$_hgrepo" ]]; then
    cd "$_hgrepo"
    hg pull -u
    msg "The local files are updated."
  else
    hg clone "$_hgroot" "$_hgrepo"
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  #
  # BUILD HERE
  #

  # fix http://bugs.debian.org/cgi-bin/bugreport.cgi?bug=667139
  sed -i "/#include <Inventor\/C\/basic.h>/i #include <Inventor/C/errors/debugerror.h>" include/Inventor/SbBasic.h

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_hgrepo-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
