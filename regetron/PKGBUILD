# Packager: Roberto Catini <roberto.catini@gmail.com>

pkgname=regetron
pkgver=1.3
pkgrel=1
pkgdesc="Regetron is a simple shell for playing with regular expressions."
arch=(any)
url="https://gitorious.org/regetron"
license=('custom')
depends=('python2')
makedepends=('git')

package() {
	git clone git://gitorious.org/regetron/regetron.git $pkgname
	cd "$srcdir/$pkgname"
	git checkout d7d3d5c909247a9799cc2e6b497683f68cfdc847
	python2 setup.py install --root="$pkgdir/" --optimize=1
	install -D -m644 "$srcdir/$pkgname/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
