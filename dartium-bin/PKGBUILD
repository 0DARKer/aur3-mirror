# Contributor: T. Jameson Little <t.jameson.little@gmail.com>
pkgname=dartium-bin
pkgver=1.0.0.10
pkgrel=1
pkgdesc="Chromium-based browser that includes the Dart virtual machine (integration version built with dart-editor)"
arch=(x86 x86_64)
url="http://www.dartlang.org/dartium/"
license=('BSD')
depends=(libudev.so.0)
optdepends=()
makedepends=(unzip)
provides=('dartium')
conflicts=('dartium')
replaces=()
install=
changelog=dartium.changelog
noextract=()

if [[ ${CARCH} = x86_64 ]]; then
	source=("http://storage.googleapis.com/dart-archive/channels/stable/release/30798/dartium/dartium-linux-x64-release.zip")
	md5sums=('0869f6255d784b960857da566eb3aff3')
else
	source=("http://storage.googleapis.com/dart-archive/channels/stable/release/30798/dartium/dartium-linux-ia32-release.zip")
	md5sums=('e35ced6461da0a2e278e582a44c84fb9')
fi

package(){
	_from=dartium-lucid64-full-stable-30798.0
	mkdir -p ${pkgdir}/opt ${pkgdir}/usr/bin ${pkgdir}/usr/lib
	find ${srcdir}/${_from} -perm -u+x -exec chmod +x '{}' +
	find ${srcdir}/${_from} -perm -u+r -exec chmod +r '{}' +
	find ${srcdir}/${_from} -perm -u+w -exec chmod +w '{}' +
	cp -r ${srcdir}/${_from} ${pkgdir}/opt/${pkgname}

	ln -s /opt/${pkgname}/chrome ${pkgdir}/usr/bin/dartium
}
