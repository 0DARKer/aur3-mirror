# Maintainer: Patrick Palka <patrick@parcs.ath.cx>
# Development: http://parcs.ath.cx:99/pub/patrick/to.php?cde
# Development: http://git.lambda.ath.cx:99/

pkgname=cde
pkgver=2011.01.03
pkgrel=1
pkgdesc="automatic packaging of Code, Data, and Environment"
url="http://www.stanford.edu/~pgbovine/cde.html"
arch=('i686' 'x86_64')
license=('BSD')
if [ "$CARCH" = "i686" ]; then
    suffix=32bit
    md5sums=('f37738dd07fd9561899d0489839f8815')
else
    suffix=64bit
    md5sums=('c6131d658f74d54f9bd17d5a38c0320c')
fi
infix=$(echo $pkgver | tr "." "-")
file="cde_${infix}_${suffix}"

source=("https://github.com/downloads/pgbovine/CDE/${file}")

package() {
    cd $srcdir
    install -Dm755 "$file" "${pkgdir}/usr/bin/cde"
}
