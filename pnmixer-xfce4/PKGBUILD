# Maintainer: Mike Krueger <info@memoryleakx.dudmail.com>
pkgname=pnmixer-xfce4
pkgver=2
pkgrel=8
pkgdesc="PNMixer is a GTK volume mixer applet. Fixed: Child Process pavucontrol becomes to a zombie process after close. Fixed: improve mouse wheel speed."
arch=('i686' 'x86_64')
license=('GPL-3')
url="https://code.google.com/p/pnmixer-xfce4/"
depends=('gtk2' 'alsa-lib')
optdepends=('pavucontrol')
makedepends=('git')
provides=('pnmixer')
conflicts=('pnmixer')
groups=('pnmixer')

_gitroot="git://github.com/nicklan/pnmixer.git"
_gitname="pnmixer"

source=(http://pnmixer-xfce4.googlecode.com/files/improveMousewheelSpeedPatch03.patch
	http://pnmixer-xfce4.googlecode.com/files/antiZombiePatch03.patch)

md5sums=('c612d4e47bdfe30259d16c8be88394ab'
	 '8ffacd24b2ebccb72adb33d8e2e31049')

build() {

  cd "${srcdir}"

  
  if [ -d ${srcdir}/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  patch -Np0 -i improveMousewheelSpeedPatch03.patch
  patch -Np0 -i antiZombiePatch03.patch

  cd ${srcdir}/${_gitname}


  ./autogen.sh || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
