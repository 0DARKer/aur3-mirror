# Maintainer: Mike Krueger <info@memoryleakx.dudmail.com>
pkgname=pnmixer-xfce4
pkgver=2
pkgrel=6
pkgdesc="PNMixer is a GTK volume mixer applet. Fixed: Child Process pavucontrol becomes to a zombie process after close. Fixed: improve mouse wheel speed."
arch=('i686' 'x86_64')
license=('GPL-3')
url="https://code.google.com/p/pnmixer-xfce4/"
depends=('gtk2' 'alsa-lib' 'pavucontrol')
makedepends=('git')
provides=('pnmixer')
conflicts=('pnmixer')
groups=('pnmixer')



source=(https://github.com/downloads/nicklan/pnmixer/pnmixer-0.5.1.tar.gz
	http://pnmixer-xfce4.googlecode.com/files/fasterMouseWheelPatch.patch
	http://pnmixer-xfce4.googlecode.com/files/antiZombiePatch.patch)

md5sums=('2288af95ab280721b39b7c33601d5dd4'
	'9e550ba83e0ea421cf17028e3c39a9a4'
	'2ace2c7d7b27d09e04425482e4b3f368')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  patch -p0 -i fasterMouseWheelPatch.patch
  patch -p0 -i antiZombiePatch.patch

  ./autogen.sh || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
