# Maintainer: Mike Krueger <info@memoryleakx.dudmail.com>
pkgname=pnmixer-xfce4
pkgver=2
pkgrel=6
pkgdesc="PNMixer is a GTK volume mixer applet. Fixed: Child Process pavucontrol becomes to a zombie process after close. Fixed: improve mouse wheel speed."
arch=('i686' 'x86_64')
license=('GPL-3')
url="https://code.google.com/p/pnmixer-xfce4/"
depends=('gtk2' 'alsa-lib' 'pavucontrol')
makedepends=('git')
provides=('pnmixer')
conflicts=('pnmixer')
groups=('pnmixer')



source=(https://github.com/downloads/nicklan/pnmixer/pnmixer-0.5.1.tar.gz
	http://pnmixer-xfce4.googlecode.com/files/improveMousewheelSpeedPatch02.patch
	http://pnmixer-xfce4.googlecode.com/files/antiZombiePatch02.patch)

md5sums=('2288af95ab280721b39b7c33601d5dd4'
	'ab0d43f87ce1e7069f60b82240e25a28'
	'cfe22bc37202ea8eda92ae97214981cd')

build() {

  cd "${srcdir}"

  patch -Np1 -i improveMousewheelSpeedPatch.patch
  patch -Np1 -i antiZombiePatch01.patch


  ./autogen.sh || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
