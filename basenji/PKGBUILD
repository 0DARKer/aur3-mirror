# Maintainer: JHeaton <jheaton at archlinux dot us>
pkgname=basenji
pkgver=0.8.0
pkgrel=1
pkgdesc="Volume indexing tool designed for easy and fast indexing of volume collections."
arch=('any')
url="https://launchpad.net/basenji"
license=('GPL')
depends=('mono' 'gio-sharp' 'gtk-sharp-2' 'gnome-sharp' 'ndesk-dbus-glib' 'udisks')
source=(http://launchpad.net/$pkgname/trunk/0.8/+download/$pkgname-$pkgver.tar.gz)
md5sums=('0c745ef3e119f00bd1b8cfce88480d23')

build() {
  cd "$srcdir"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"

  make DESTDIR="$pkgdir" install
}

