pkgname=perl-lyrics-fetcher-lyricwiki
pkgver=0.02
pkgrel=1
pkgdesc="Get song lyrics from www.LyricWiki.org"
url="http://search.cpan.org/~bigpresh/Lyrics-Fetcher-LyricWiki-0.02/lib/Lyrics/Fetcher/LyricWiki.pm"
license="GPL"
arch=('i686' 'x86_64')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/B/BI/BIGPRESH/Lyrics-Fetcher-LyricWiki-0.02.tar.gz)
md5sums=('b113b18e56a4181373e0514aca5be5cc')

build() {
  cd $startdir/src/Lyrics-Fetcher-LyricWiki-$pkgver
  /usr/bin/perl Makefile.PL
  make
  make DESTDIR=$startdir/pkg install

  /usr/bin/find $startdir/pkg -name '.packlist' -exec rm '{}' \;
  /usr/bin/find $startdir/pkg -name 'perllocal.pod' -exec rm '{}' \;
}
