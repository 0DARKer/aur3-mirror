# Maintainer: masutu <masutu dot arch at gmail dot com>
# Contributor: masutu <masutu dot arch at gmail dot com>
pkgname=python2-sunpy
pkgver=0.4.0
pkgrel=1
pkgdesc="Python library for solar physics"
arch=('i686' 'x86_64')
url="http://www.sunpy.org/"
license=('BSD')
depends=('python2-astropy'
          'python2-matplotlib'
          'python2-scipy')
optdepends=('python2-pandas: for lightcurve'
            'python2-sqlalchemy: for the database package'
            'python2-suds: for net'
            'python2-beautifulsoup4: for callisto spectrograms and net.helio'
            'python2-pytest: for running tests')
            #'python2-glymur: for reading jpeg2000 files'
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/s/sunpy/sunpy-0.4.0.tar.gz)
md5sums=('dfae1bb4fbc32ffc42e2d6e5f9da57d0')

package(){
  cd $srcdir/sunpy-$pkgver
  python2 setup.py install --root="$pkgdir/" --optimize=1
  install -D -m644 LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

