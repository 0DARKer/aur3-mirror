# Contributor: tantalum <tantalum at online dot de>
pkgname=guile-ncurses
pkgver=1.2
pkgrel=1
pkgdesc='Guile bindings for the GNU NCurses library'
arch=(any)
license=(GLPL3)
depends=(guile ncurses)
url=http://www.gnu.org/software/guile-ncurses/
source=(ftp://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=(3e64952de00b31d0abeb6fcc4d7b98ce)

build() {
 cd ${srcdir}/${pkgname}-${pkgver}

 ./configure --prefix=/usr --with-ncursesw || return 1
 make && make DESTDIR=${pkgdir} install || return 1
 
 mkdir -p ${pkgdir}/usr/share/guile/site
 mv ${pkgdir}/usr/share/guile-ncurses/ncurses ${pkgdir}/usr/share/guile/site
 rmdir ${pkgdir}/usr/share/guile-ncurses
 
 #remove documentation
 if [ -e ${pkgdir}/usr/share/info ]; then
  rm -r ${pkgdir}/usr/share/info
 fi
}
