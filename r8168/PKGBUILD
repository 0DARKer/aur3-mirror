# Maintainer: Bob Fanger < bfanger(at)gmail >
# Contributor: Filip <fila pruda com>
pkgname=r8168
pkgver=8.024.00
pkgrel=2
_kernver=`uname -r`
pkgdesc="A kernel module with support to realtek 8168 network cards"
url="http://www.realtek.com.tw"
license="realtek"
arch=('i686' 'x86_64')
depends=('glibc')
makedepends=(linux-headers)
provides=()
conflicts=()
source=( http://r8168.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
md5sums=('eb6c56672c7e2b3efa3ad7e4369a4fee')
install=${pkgname}.install

build() {
  
  cd ${startdir}/src/${pkgname}-${pkgver}
  make clean modules || return 1
  #Install kernel module
  install -D -m644 src/r8168.ko ${pkgdir}/lib/modules/${_kernver}/kernel/drivers/net/r8168.ko
  
}
