pkgname=perl-encode-detect
pkgver=1.01
pkgrel=2
pkgdesc="An Encode::Encoding subclass that detects the encoding of data"
url="http://search.cpan.org/~jgmyers/Encode-Detect/"
license=('MPL')
arch=('i686' 'x86_64')
depends=('perl')
makedepends=('perl-module-build' 'perl-extutils-cbuilder')
source=(http://search.cpan.org/CPAN/authors/id/J/JG/JGMYERS/Encode-Detect-$pkgver.tar.gz)
md5sums=('ee9faf55d7105c97b02b8ebe590819c7')

build() {
  cd $startdir/src/Encode-Detect-$pkgver
  eval $(perl -V:archname)
  export PERL5LIB=/usr/lib/perl5/site_perl/current;/usr/lib/perl5/site_perl/current/${archname}
  perl Build.PL destdir=${startdir}/pkg \
      --install_path lib=/usr/lib/perl5/site_perl/current \
      --install_path arch=/usr/lib/perl5/site_perl/current/${archname}
  perl Build
  perl Build install
}
