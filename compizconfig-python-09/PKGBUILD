
# Put the desired install prefix HERE
_iprefix=/opt/compiz-09

pkgname=compizconfig-python-09
pkgver=0.9.2.1
pkgrel=1
pkgdesc="Compizconfig bindings for python"
arch=('i686' 'x86_64')
url="http://compiz.org"
license=('GPL')
depends=('compiz-core-09' 'libcompizconfig-09' 'glib2' 'python2')
makedepends=('intltool' 'pkgconfig' 'cython')
source=("http://releases.compiz.org/$pkgver/compizconfig-python-${pkgver}.tar.gz")
sha1sums=('f8ead2b794fa1cc510f3ea1c1d94eaafbc607a0b')

# This is a developement version
OPTIONS=(!strip)

build()
{
	cd "compizconfig-python-$pkgver"
	env PKG_CONFIG_PATH="$_iprefix/lib/pkgconfig:$PKG_CONFIG_PATH" \
		python2 setup.py build
	env PKG_CONFIG_PATH="$_iprefix/lib/pkgconfig:$PKG_CONFIG_PATH" \
		python2 setup.py install --prefix="$_iprefix" --root="$pkgdir"
}
