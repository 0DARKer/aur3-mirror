# Maintainer: gareth_c 

pkgname=cinnamon-applet-vbox-launcher
pkgver=0.1
pkgrel=1
pkgdesc="Simple Cinnamon applet to launch Virtualbox virtual machines directly from the panel."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/applets/view/25"
license=('GPL')
depends=('cinnamon' 'gtk3')
source=('http://cinnamon-spices.linuxmint.com/uploads/applets/DJSV-5RYM-MLNO.zip')
md5sums=('09b8cd814c062e43c15fdec1e1c7e181')
build() {
	cd ${srcdir}/cinnamon-applet-vbox-launcher/vboxlauncher@adec/
	
	cinnamon_dir="$pkgdir/usr/share/cinnamon/applets/vboxlauncher@adec"

	mkdir -p $cinnamon_dir
	
	install -m0644 metadata.json applet.js $cinnamon_dir
}
