# Contributor: pfm <nl081130@yahoo.de>
pkgname=gebabbel
pkgver=0.4
pkgrel=3
pkgdesc="GUI for gpsbabel"
arch=('i686' 'x86_64')
url="http://gebabbel.sourceforge.net/"
license=('GPL2')
depends=('qt>=4.3.0' 'gpsbabel>=1.3.3')
source=("http://downloads.sourceforge.net/sourceforge/$pkgname/Gebabbel-$pkgver-Src.tar.gz" \
        "http://$pkgname.sourceforge.net/GebabbelLogo.png" \
        "$pkgname.desktop" \
        "$pkgname.patch")
md5sums=('aecebdcffe5bf6b53a7d5c8aceb4f450'
         '94b1e193b1fa224b5865e8cb9f639e62'
         '241ababb7a7ccde3e4fae52e7d1a50a9'
         '38b86ea674c107fc265a060654dcbd31')

build() {
    cd $startdir/src/Gebabbel-$pkgver
    
    patch -p1 -i $srcdir/$pkgname.patch || return 1

    qmake || return 1
    make || return 1
    
    install -D -m 755 $startdir/src/Gebabbel-$pkgver/bin/$pkgname \
        $startdir/pkg/usr/bin/$pkgname
    install -D -m 644 $srcdir/GebabbelLogo.png \
        $pkgdir/usr/share/pixmaps/$pkgname.png 
    install -D -m 644 $srcdir/$pkgname.desktop \
        $pkgdir/usr/share/applications/$pkgname.desktop
}
