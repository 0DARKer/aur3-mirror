# Maintainer: Jakub Klinkovsk√Ω <kuba.klinkovsky@gmail.com>
pkgname=mp3convert-git
pkgver=20120717
pkgrel=1
pkgdesc="Simple python script to convert recursively all audio files in given folder to specified bitrate"
arch=('any')
url="https://github.com/lahwaacz/mp3convert"
license=('GPL')
depends=('python' 'ffmpeg')
makedepends=('git')

_gitroot=git://github.com/lahwaacz/mp3convert.git
_gitname=mp3convert

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."
}

package() {
  cd "$srcdir/$_gitname"
  install -Dm755 mp3convert.py "$pkgdir/usr/bin/mp3convert"
}

