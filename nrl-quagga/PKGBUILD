# Maintainer: Tom Wambold <tom5760@gmail.com>
pkgname=nrl-quagga
pkgver=0.99.svn
pkgrel=1
pkgdesc="Implementation of OSPF MDR."
arch=('i686' 'x86_64')
url="http://cs.itd.nrl.navy.mil/work/ospf-manet/"
license=('GPL')
depends=(libcap libnl readline)
makedepends=(autoconf)
source=(http://downloads.pf.itd.nrl.navy.mil/ospf-manet/nightly_snapshots/quagga-svnsnap.tgz)
md5sums=('8aa1229bec7cf5b0e53bf4068aa01c81')

build() {
  cd "$srcdir/quagga"
  unset CFLAGS
  unset CXXFLAGS
  unset LDFLAGS
  ./bootstrap.sh
  ./configure --prefix=/usr --enable-user=root --enable-group=root \
    --with-cflags=-ggdb --sysconfdir=/etc/quagga --enable-vtysh \
    --localstatedir=/var/run/quagga
  make
}

package() {
  cd "$srcdir/quagga"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
