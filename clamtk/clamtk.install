## arg 1:  the new package version
post_install() {
  echo ">> If you want to be able to scan .rar and .zip files install unzip and unrar packages."
  update-desktop-database -q
}

## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
  post_install $1
}

post_remove() {
  update-desktop-database -q
}


