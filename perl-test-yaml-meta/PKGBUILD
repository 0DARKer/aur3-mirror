pkgname='perl-test-yaml-meta'
pkgver='0.16'
pkgrel='1'
pkgdesc="A test module to validate a META.yml file."
arch=('any')
url='http://search.cpan.org/dist/Test-YAML-Meta'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-test-yaml-valid>=0.03')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/B/BA/BARBIE/Test-YAML-Meta-0.16.tar.gz')
md5sums=('9f7db9e1699e25bb254315141ef9306c')

build() {
  DIST_DIR="${srcdir}/Test-YAML-Meta-0.16"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

