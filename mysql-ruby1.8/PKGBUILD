# Contributor: Jacek Roszkowski <j.roszk@gmail.com>

pkgname=mysql-ruby1.8
_realname=mysql-ruby
pkgver=2.8.1
pkgrel=1
pkgdesc="This is the MySQL API module for Ruby."
arch=('i686' 'x86_64')
license=('GPL')
url="http://tmtm.org/downloads/mysql/ruby"
depends=('ruby1.8' 'libmysqlclient')
source=(http://tmtm.org/downloads/mysql/ruby/${_realname}-$pkgver.tar.gz)
md5sums=('83b068619f6e9cfb5778125673462f09')
sha1sums=('9a5c04cc17be6d92c57756866b8abb894da7ca90')

build() {
    cd "$srcdir/${_realname}-$pkgver"
    ruby-1.8 extconf.rb || return 1
    ruby-1.8 extconf.rb --with-mysql-config || return 1
    make || return 1
    make DESTDIR="$pkgdir" install || return 1
}
