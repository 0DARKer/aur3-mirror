# Maintainer: David Adler <david dot jo dot adler at gmail dot com>
pkgname=arpage
pkgver=0.3.3
pkgrel=2
pkgdesc="JACK MIDI arpeggiator with JACK Transport sync"
arch=('i686' 'x86_64')
url="http://arpage.sourceforge.net/"
license=('GPL')
depends=('jack' 'gtkmm' 'libxml++' 'intltool' 'libsigc++')
source=(http://downloads.sourceforge.net/project/arpage/Alpha%20Release%20$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('987070a6efb4c9e9f3dbe4ca43ddc6a4')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
