# Maintainer Daniel Landau <daniel+aur@landau.fi>

_pkgname=athame
pkgname=${_pkgname}-git
pkgver=6.3
pkgrel=2
pkgdesc="Full Vim support for readline"
url="https://github.com/ardagnir/$_pkgname"
license=('GPL3')
depends=('glibc' 'ncurses')
optdepends=(
     )
provides=("readline")
conflicts=("readline")
arch=('i686' 'x86_64')
options=(!emptydirs)
source=("git+$url.git"
"makefile.patch")
sha256sums=('SKIP'
            'd93b23074692ec5cfd3a521865399bce1621e500db5adb245ed9a4cb038b0ebe')

pkgver() {
    cd "${srcdir}/${_pkgname}"
    # printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
    printf 6.3
}

prepare() {
  cd $_pkgname
  sed -i 's|-Wl,-rpath,$(libdir) ||g' support/shobj-conf
  patch -p1 < ../../makefile.patch
  git submodule init
  git submodule update
}

build() {
  cd $_pkgname

  # build with -fPIC for x86_64 (FS#15634)
  [[ $CARCH == "x86_64" ]] && CFLAGS="$CFLAGS -fPIC"

  ./configure --prefix=/usr
  make SHLIB_LIBS=-lncurses
}


package() {
    make -C $_pkgname DESTDIR="$pkgdir" install
    install -Dm644 $_pkgname/athamerc "$pkgdir"/etc/athamerc
}

