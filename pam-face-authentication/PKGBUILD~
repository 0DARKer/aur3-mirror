pkgname=pam-face-authentication
pkgver=0.3
pkgrel=2
pkgdesc="PAM face auth"
arch=('i686' 'x86_64')
url="http://code.google.com/p/pam-face-authentication"
license=('GPL')
#groups=()
depends=('pam' 'opencv' 'libx11' 'qt')
makedepends=('cmake')
#provides=()
#conflicts=()
#replaces=()
#backup=()
#install=
source=(http://pam-face-authentication.googlecode.com/files/$pkgname-$pkgver.tar.gz)
#noextract=()
md5sums=('5ef71bcf4bdebd2ee7216387ef17fc27')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  rm cmake/modules/FindOpenCV.cmake #See issue 75 in Google Code.
  cmake -D CMAKE_INSTALL_PREFIX=/usr . || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install
}
