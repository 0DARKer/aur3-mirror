_pkgname=chromium-browser
pkgname=chromium-browser-beta
pkgver=9.0.597.84
_pkgsuf=-0ubuntu1~ucd~beta1
_pkgrev=r72991
pkgrel=1
pkgdesc="The open-source project behind Google Chrome (Beta Channel, precompiled Ubuntu build)"
arch=('i686' 'x86_64')
url=https://launchpad.net/chromium-browser/
license=('BSD')
depends=('nss' 'gconf' 'alsa-lib' 'hicolor-icon-theme' 'bzip2' 'libevent' 'libxss' 'libxtst' 'libjpeg6' 'libpng12')
optdepends=('chromium-browser-inspector-ppa: for HTML/CSS development [AUR]'
            'chromium-browser-l10n-ppa: for additional languages pack [AUR]'
            'chromium-codecs-ffmpeg-extra-ppa: for viewing HTML5/H.264 videos [AUR]'
            'ttf-hannom-usong: Unicode Han and Nom (Chinese and Vietnamese) fonts [AUR]'
            'ttf-indic-otf: Unicode collection various (Indian) language fonts [extra]'
            'otf-ipafont: Unicode Gothic/sans and Mincho/serif (Japanese) fonts [AUR]'
            'lsb-release: An ArchLinux specific LSB Release/Version query tool [AUR]'
            'xdg-utils: for setting a default browser on desktop environments [extra]')
provides=("chromium-browser=${pkgver}")
conflicts=('chromium-browser' 'chromium-browser-bin' 'chromium-browser-svn')
backup=(etc/chromium-browser/default)
install=${pkgname}.install

_arch='i386' && md5sums=('472bdbc4aaf5448ce12a85e7e07bb1b4')
[ "$CARCH" = "x86_64" ] && _arch='amd64' && md5sums=('7ac273fb96e90faeafc080a4d4d54ad9')

source=(https://launchpad.net/~chromium-daily/+archive/beta/+files/${_pkgname}_${pkgver}~${_pkgrev}${_pkgsuf}_${_arch}.deb)

package() {
    msg2 "Extracting & installing files..."
    ar x ${pkgname/-*}*.deb
    tar xf data.tar.lzma -C "${pkgdir}"
    msg2 "Adding the license that nobody reads (or cares about)..."
    mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"
    ln -s /usr/share/doc/${_pkgname}/copyright "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}