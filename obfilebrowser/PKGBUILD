#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=obfilebrowser
pkgver=2011.03.12.1
pkgrel=1
pkgdesc="A file browser for Openbox using pipe menus."
depends=('python2' 'mimeo>=2011.03.12')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('3c96e12f31142354de5db564604cb18a')

build() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
# vim: set ts=2 sw=2 et:
