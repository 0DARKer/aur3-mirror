pkgname=gperftools
pkgver=2.0
pkgrel=2
pkgdesc="Fast, multi-threaded malloc() and nifty performance analysis tools"
arch=('x86_64' 'i686')
url="http://code.google.com/p/gperftools/"
license=('BSD')
depends=('perl' 'libunwind>=1.0.1')
[[ "$CARCH" == "i686" ]] && depends=('perl') # Just perl for i686
optdepends=(
    'graphviz: for pprof graphical output routines'
    'gv: for pprof --gv mode'
)
options=('libtool')
source=("http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz")
sha256sums=('7de3dd91f018825b1e7d332af1edace15c6211f430186febede1835069861080')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install

  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

