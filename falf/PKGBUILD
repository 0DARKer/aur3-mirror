# Maintainer: nobange <nobange@poczta.onet.pl>
pkgname=falf
pkgver=1.1
pkgrel=2
pkgdesc="Music player for KDE (based on Xine)."
arch=('i686' 'x86_64')
url="http://falf.sourceforge.net/"
license=('GPL')
depends=('xine-lib' 'taglib' 'qt3' 'kdelibs')
makedepends=('rpmextract')
source=(http://packman.links2linux.de/download/falf/132946/falf-1.1-0.pm.1.i586.rpm)
md5sums=('2bd14600fd6facc81380dfcc0383ba33')

build() {
	cd $startdir/pkg
	rpmextract.sh $startdir/src/falf-1.1-0.pm.1.i586.rpm
	chmod -R 755 $startdir/pkg/
	mv $startdir/pkg/opt/kde3 $startdir/pkg/opt/kde
	} 
