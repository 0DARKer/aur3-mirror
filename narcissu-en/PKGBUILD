# Maintainer: Anton Larionov <diffident dot cat at gmail dot com>

pkgname=narcissu-en
pkgver=1.1
pkgrel=5
pkgdesc="Free japanese visual novel game, translated into English"
arch=('any')
url="http://narcissu.insani.org/"
license=('custom:freeware')
depends=('onscripter-en' 'sh')

source=('http://narcissu.gwathyr.net/NarcissuSetup[insani+Haeleth].tar.bz2'
        'narcissu-en.sh'
        'narcissu-en.desktop'
        'narcissu-en.xpm')

md5sums=('725a6168aed4a6a575f014c6e5110fa5'
         '9d56f3b8e1fa679089e4ab8b63366d75'
         '11c539637a4b37b3cea3135462000093'
         '7582c1e98624d8c76b23c535d34b1705')

build() {

  # copy main files and documentation

  install -dm755 "${pkgdir}/usr/share/${pkgname}"
  install -dm755 "${pkgdir}/usr/share/doc/${pkgname}"

  cd "${srcdir}/narcissu_web_edition/"
  install -m644 arc.nsa default.ttf nscript.dat "${pkgdir}/usr/share/${pkgname}"
  install -m644 PFSL.txt readme.txt "${pkgdir}/usr/share/doc/${pkgname}"

  # install desktop entry files and bash script

  install -D -m644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
  install -D -m644 "${srcdir}/${pkgname}.xpm" "${pkgdir}/usr/share/pixmaps/${pkgname}.xpm"
  install -D -m755 "${srcdir}/${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
}

# vim:set ts=2 sw=2 et:
