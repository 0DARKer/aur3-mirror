# Maintainer: Anton 'escaleone' Larionov <escaleone at gmail dot com>

pkgname=narcissu-en
pkgver=1.1
pkgrel=1
pkgdesc="A free japanese visual novel game, translated into English."
arch=('any')
url="http://www.neechin.net/narcissu/"
license=('unknown')
depends=('onscripter-en')

source=('http://narcissu.gwathyr.net/NarcissuSetup[insani+Haeleth].tar.bz2'
	'narcissu-en.sh')

md5sums=('725a6168aed4a6a575f014c6e5110fa5'
         '0386d7d4c6b161a38cd9859beb26e093')

build() {

  # copy main files and documentation

  install -dm755 "${pkgdir}/usr/share/${pkgname}"
  install -dm755 "${pkgdir}/usr/share/doc/${pkgname}"

  cd "${srcdir}/narcissu_web_edition/"
  install -m644 arc.nsa default.ttf nscript.dat "${pkgdir}/usr/share/${pkgname}"
  install -m644 PFSL.txt readme.txt "${pkgdir}/usr/share/doc/${pkgname}"

  # copy bash script

  install -D -m755 "${srcdir}/narcissu-en.sh" "${pkgdir}/usr/bin/${pkgname}"

}

# vim:set ts=2 sw=2 et:
