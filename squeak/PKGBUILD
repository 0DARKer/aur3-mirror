pkgname=squeak
pkgver=4.0.3.2202
pkgrel=2
pkgdesc="a full-featured implementation of the Smalltalk programming language and environment"
arch=('i686' 'x86_64')
url="http://www.squeak.org/"
license=('custom:MIT' 'APACHE')
depends=('alsa-lib' 'libxt' 'libxrender' 'libgl')
makedepends=('cmake')
optdepends=('speex: for ogg plugin'
  'gstreamer0.10: for gstreamer plugin'
  'libpulse: for pulse plugin'
  'squeak-image: for the full Squeak environment')
source=(http://ftp.squeak.org/4.1/unix-linux/Squeak-$pkgver-src.tar.gz)
md5sums=('f0d878bc354b7d3c1f052580da976d89')

build() {
  cd "${srcdir}/Squeak-$pkgver-src/"
  # Create build directory
  [ -d build ] && rm -rf build/
  install -d build
  cd build
  # Build program
  ../unix/cmake/configure --prefix=/usr \
                          --without-quartz \
                          --with-x \
                          --enable-mpg-mmx || return 1
  make || return 1
  make DESTDIR="$pkgdir" install
  # Install license
  mkdir -p $pkgdir/usr/share/licenses/squeak
  install "${srcdir}/Squeak-$pkgver-src/unix/doc/LICENSE" $pkgdir/usr/share/licenses/squeak
  #rm -f $pkgdir/usr/bin/squeak.sh
}

