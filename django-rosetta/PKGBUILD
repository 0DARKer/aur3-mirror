pkgname=django-rosetta
pkgver=0.4.0
pkgrel=2
pkgdesc="A Django application that eases the translation process of your Django projects"
arch=('i686' 'x86_64')
url="http://code.google.com/p/django-rosetta/"
license=('MIT')
depends=('django>=1.0')
makedepends=('setuptools')
source=(http://django-rosetta.googlecode.com/files/rosetta-$pkgver.tar.gz setup.py)
md5sums=('cfbfaf8e8e34515bf282609b27d9f457'
         '5482d06e87e3dd6f2e9950cb396491ca')

build() { 
    cd "$srcdir"

    python setup.py build || return 1
    python setup.py install --root=$pkgdir || return 1
}
