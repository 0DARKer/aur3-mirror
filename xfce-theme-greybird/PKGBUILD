# Maintainer: flan_suse <windows2linux AT zoho DOT com>
pkgname=xfce-theme-greybird
_pkgname=Greybird
pkgver=0.2.1
pkgrel=1
pkgdesc="A low saturation Xfce theme, introduced in the release of Xubuntu 11.04"
arch=('any')
url="http://shimmerproject.org/projects/greybird/"
license=('GPL3')
groups=('xfce-themes-shimmer-collection')
depends=('gtk-engine-murrine')
optdepends=('elementary-icons: matching icon set')
source=("https://download.github.com/shimmerproject-$_pkgname-v$pkgver-0-gf5c9b6f.tar.gz")
md5sums=('0b4e6377fb3cfa4fc58169d3112b4979')

package() {
    
    # Move into source directory
    cd "${srcdir}"

    # Remove any excess files, left over by the original author
    find "$PWD" -name "*~" -exec rm '{}' \;

    # Create installation directories
    install -d -m755 "${pkgdir}/usr/share/themes/$_pkgname"

    # Install the theme
    cp -rf "shimmerproject-$_pkgname-090a590"/* "${pkgdir}/usr/share/themes/$_pkgname/"

}


