# Maintainer: flan_suse <windows2linux AT zoho DOT com>
pkgname=xfce-theme-greybird
pkgver=0.2
pkgrel=3
pkgdesc="A low saturation Xfce theme, introduced in the release of Xubuntu 11.04"
arch=('any')
url="http://shimmerproject.org/projects/greybird-aka-bluebird-colors/"
license=('GPL3')
groups=('xfce-themes-shimmer-collection')
depends=('gtk-engine-murrine')
optdepends=('elementary-icons: matching icon set')
source=('http://shimmerproject.org/hg/bluebird-colors/raw-file/bd162ed66b89/releases/greybird-0.2.tar.gz')
md5sums=('fb0b61f8cfaf41ef4edbb76db66145df')

build() {
    
    # Move into source directory
    cd "${srcdir}"

    # Rename parent Greybird directory
    mv greybird Greybird

    # Remove excess files, left over by the original author
    rm -f "Greybird/xfwm4/themerc~"

    # Create installation directories
    install -d -m755 "${pkgdir}/usr/share/themes/"

    # Install the theme
    cp -rf "Greybird" "${pkgdir}/usr/share/themes/"

}


