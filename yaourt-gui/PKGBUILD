pkgname=yaourt-gui
pkgver=0.7
pkgrel=4
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://www.vklinux.net/index.php/forum/44-archlinux-project/61-yaourt-gui-a-bash-gui-per-yaourt"
license=('GPL')
depends=('yaourt')
optdepends=('sudo' 'pacman-color')
source=("http://www.vklinux.net/project/yaourtgui/$pkgname-$pkgver.tar.gz")


package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=${pkgdir} install
}


md5sums=('cd199644dfd74b304c3cd10e25e7cc51')
