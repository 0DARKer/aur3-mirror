pkgname=yaourt-gui
pkgver=0.7
pkgrel=5
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://www.vklinux.net/index.php/forum/44-archlinux-project/61-yaourt-gui-a-bash-gui-per-yaourt"
license=('GPL')
depends=('yaourt')
optdepends=('sudo' 'pacman-color' 'aurvote')
source=("http://sourceforge.net/projects/yaourt-gui/files/$pkgname-$pkgver.tar.gz")


package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=${pkgdir} install
}


md5sums=('0aed09b2809143182086ecca1cf63b11')
