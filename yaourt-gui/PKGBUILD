# Maintainer: ale_xiovk <varialking et gmail dot com>

pkgname=yaourt-gui
pkgver=0.1
pkgrel=1
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://vkteam.altervista.org/yaourtgui/yaourtgui.html"
license=('GPL')
depends=('yaourt')
source=("http://vkteam.altervista.org/yaourtgui/$pkgname-$pkgver.tar.gz")
md5sums=('8b5b72ec4d9fc2aa26f6b4109b1e4a0f')


package() {
	cd $srcdir/$pkgname-$pkgver
	install -d ${pkgdir}/usr/bin
	install -d ${pkgdir}/usr/local/share/locale/`(echo $LANG | cut -c1-2)`/LC_MESSAGES
	
	install -Dm755 yaourt-gui \
		${pkgdir}/usr/bin
	
	msgfmt -o $pkgname.mo `(echo $LANG | cut -c1-2)`.po	
	install -Dm755 $pkgname.mo \
		${pkgdir}/usr/local/share/locale/`(echo $LANG | cut -c1-2)`/LC_MESSAGES
}

