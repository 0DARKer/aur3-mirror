pkgname=yaourt-gui
pkgver=0.7
pkgrel=6
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://sourceforge.net/projects/yaourt-gui/"
license=('GPL')
depends=('yaourt')
optdepends=('sudo' 'pacman-color' 'aurvote')
source=("http://sourceforge.net/projects/yaourt-gui/files/$pkgname-$pkgver.tar.gz")


package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=${pkgdir} install
}



md5sums=('29d1aeef2c28e970c6bfbd0896f20055')
