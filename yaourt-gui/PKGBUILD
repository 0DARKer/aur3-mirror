pkgname=yaourt-gui
pkgver=0.3
pkgrel=2
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://vkteam.altervista.org/yaourtgui/yaourtgui.html"
license=('GPL')
depends=('yaourt')
source=("http://vkteam.altervista.org/yaourtgui/$pkgname-$pkgver.tar.gz")
md5sums=('e8f65fe52ad99a1660b4a0200d1c352b')

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=${pkgdir} install
}

