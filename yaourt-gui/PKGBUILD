pkgname=yaourt-gui
pkgver=0.6
pkgrel=2
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://vkteam.altervista.org/yaourtgui/yaourtgui.html"
license=('GPL')
depends=('yaourt')
optdepends=('sudo' 'pacman-color')
source=("http://vkteam.altervista.org/yaourtgui/$pkgname-$pkgver.tar.gz")

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=${pkgdir} install
}


md5sums=('fb0ff808fc3e417e78aa40611846f942')
