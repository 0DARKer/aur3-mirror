# Maintainer: Alessio Di Paolosanti

pkgname=yaourt-gui
pkgver=0.1b
pkgrel=1
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://vkteam.altervista.org/yaourtgui/yaourtgui.html"
license=('GPL')
depends=('yaourt')
source=("http://vkteam.altervista.org/yaourtgui/$pkgname$pkgver.tar.gz")
md5sums=('b7e67fb7cc8399e387b00e00cedd1b9c')

package() {
	cd $srcdir/$pkgname$pkgver/bin
	install -d ${pkgdir}/usr/bin

	if [ "$LANG" = "it_IT.UTF-8" ]; then
	  install -Dm755 it/yaourt-gui it/yaourtproxy \
	    ${pkgdir}/usr/bin
	else
	  install -Dm755 en/yaourt-gui en/yaourtproxy \
	    ${pkgdir}/usr/bin
	fi
}
