pkgname=yaourt-gui
pkgver=0.8
pkgrel=0
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://sourceforge.net/projects/yaourt-gui/"
license=('GPL')
depends=('yaourt' 'sudo')
optdepends=('pacman-color' 'aurvote')
source=("http://sourceforge.net/projects/yaourt-gui/files/$pkgname-$pkgver.tar.gz")


package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=${pkgdir} install
}



md5sums=('fc6a22d1162b0da8b348822dc5fa7c16')
