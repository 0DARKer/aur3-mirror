pkgname=yaourt-gui
pkgver=0.7
pkgrel=1
pkgdesc="A bash GUI for yaourt"
arch=('any')
url="http://www.vklinux.net/index.php?option=com_content&view=article&id=4&Itemid=5"
license=('GPL')
depends=('yaourt')
optdepends=('sudo' 'pacman-color')
source=("http://www.vklinux.net/project/yaourtgui/$pkgname-$pkgver.tar.gz")


package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=${pkgdir} install
}



md5sums=('0ea590502b64ac635be68a763a6b882a')
