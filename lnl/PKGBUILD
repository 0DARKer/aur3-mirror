# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=lnl
pkgver=3.4.19
pkgrel=1
pkgdesc='Labyrinths & Legends - A Rogue-like Fantasy RPG'
arch=('i686' 'x86_64')
url="http://lnl.sourceforge.jp/en/"
license=('GPL')
depends=('ncurses')
source=("http://iij.dl.sourceforge.jp/lnl/50524/lnl-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/lnl-${pkgver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/lnl-${pkgver}"
	make DESTDIR="$pkgdir" install
}

md5sums=('393f3c23725fdd2f8269b187d67537d3')
