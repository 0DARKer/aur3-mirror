pkgname=pegdown
pkgver=0.8.5.4
pkgrel=1
pkgdesc="A pure Java library for clean and lightweight Markdown processing"
arch=('i686' 'x86_64')
url="http://github.com/sirthias/pegdown"
depends=('java-runtime' 'parboiled')
license=('Apache')
source=(http://github.com/downloads/sirthias/$pkgname/${pkgname}-${pkgver}.jar
		setClasspath.sh)

package() {
	mkdir -p $pkgdir/usr/share/java/$pkgname

	cd $srcdir
	install -m644 ${pkgname}-${pkgver}.jar $pkgdir/usr/share/java/$pkgname
	ln -sf ${pkgname}-${pkgver}.jar $pkgdir/usr/share/java/$pkgname/$pkgname.jar
	install -m644 setClasspath.sh $pkgdir/usr/share/java/$pkgname
}

md5sums=('e0785a251fb2316ea3c2a9d0ec687371'
         '18d0a7d66d07f052fdc9194b4a5513f7')
sha256sums=('bbdcfe64c1a3291f8b15a15c94aa2a318e66586a04de189ace46230f4733ccdc'
            '1ae2d4ec87dce6dadc21f31d3385b5fee5d013c59266511a5f74a4b034bb1c4f')
