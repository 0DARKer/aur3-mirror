pkgname=qtbitcointrader
_prjname=QtBitcoinTrader
pkgver=1.07.95_Beta
pkgrel=1
pkgdesc="Secure Multi Trading Client for Bitcoin"
arch=('x86_64' 'i686')
url="http://qtopentrader.com/"
license=('GPL3')
provides=('qtbitcointrader')
conflicts=()
depends=('qt4')
optdepends=()
makedepends=('qt4')
source=("http://downloads.sourceforge.net/project/bitcointrader/SRC/QtBitcoinTrader_v1.07.95_Beta_SRC.zip?r=http%3A%2F%2Fsourceforge.net%2Fprojects%2Fbitcointrader%2Ffiles%2FSRC%2FQtBitcoinTrader_v1.07.95_Beta_SRC.zip%2Fdownload%3Fuse_mirror%3Dheanet&ts=1385124885")
sha256sums=('c5dd9f4600257e52d9ba9fc8bd94e1021a98077e79b6d5b765452a1fc671f50d')
install=qtbitcointrader.install

build() {
   cd ${srcdir}/src/
   qmake-qt4 QtBitcoinTrader.pro -r PREFIX="/usr"
   make
}

package() {
   cd ${srcdir}/src/
   make INSTALL_ROOT="${pkgdir}/" install
}

