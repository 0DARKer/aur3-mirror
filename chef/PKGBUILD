# Maintainer: Ali H. Caliskan <ahc (at) selflex.org>

pkgname=chef
pkgver=1.0
pkgrel=1
pkgdesc="A simple yet flexible package manager."
arch=('i686' 'x86_64')
url='http://www.selflex.org/chef'
license=('GPL-3')
depends=('axel' 'bash' 'fakeroot')
source=("https://github.com/selflex/${pkgname}/tarball/${pkgver}")
md5sums=('e150b75886933acf40bab661984313f0')

package() {
	cd ${srcdir}/selflex-chef-*

	install -D -m755 chef.sh ${pkgdir}/usr/bin/chef
	install -D -m644 chef.rc ${pkgdir}/etc/chef.rc
}