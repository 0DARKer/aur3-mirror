# Maintainer: Ner0

pkgname=glipper
pkgver=2.3
pkgrel=1
pkgdesc="Clipboard manager for GNOME"
arch=('any')
url="https://launchpad.net/glipper"
license=('GPL2')
depends=('python2' 'python2-gconf' 'python2-gobject2' 'pygtk' 'python-keybinder' 'pyxdg' 'gconf' 'gtk-update-icon-cache' 'hicolor-icon-theme' 'gettext')
makedepends=('python2-distutils-extra')
install=$pkgname.install
source=(http://launchpad.net/glipper/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('7dee9371540ee01a5adeacea8c74b3b1')

build() {
  cd $pkgname-$pkgver
  python2 ./setup.py install --root="$pkgdir/"
}

