# Maintainer: Àlex Ramírez Gómez <alexandre.ramirez@est.fib.upc.edu>
pkgname='pps-git'
pkgver='1.0'
pkgrel=1
pkgdesc="Perl script to search and download files from The Pirate Bay."
arch=('any')
url='https://github.com/badarg/pps'
license=('Apache')
depends=('perl')
makedepends=('git')
options=(!emptydirs)

_gitroot='https://github.com/badarg/pps.git'
_gitname='pps'

build() {
	cd "$srcdir"
	msg "Connecting to GIT server..."
	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone --depth=1 $_gitroot $_gitname
	fi
	msg "GIT checkout done or server timeout"

	install -D pps.pl "$pkgdir/usr/bin/pps"
}

