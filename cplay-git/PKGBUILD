# Maintainer: aksr <aksr at t-com dot me>
pkgname=cplay-git
pkgver=v1.50pre7.r9.g5d3556b
pkgrel=1
pkgdesc="A curses front-end for various audio players."
arch=('any')
url="https://github.com/holizz/cplay"
license=('GPLv2')
groups=()
depends=('ncurses' 'python2')
makedepends=('git')
optdepends=('mpg321' 'mpg123' 'vorbis-tools' 'speex')
provides=()
conflicts=('cplay')
replaces=()
backup=('etc/cplayrc')
options=()
install=
source=()
noextract=()
md5sums=('SKIP')
sha1sums=('SKIP')

_gitroot=https://github.com/holizz/cplay.git
_gitname=cplay

pkgver() {
  cd "$srcdir/$_gitname"
  git describe --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  # prepare
  sed -i '1s,env python,&2,' cplay
  sed -i 's|$(PREFIX)/man/man1|$(PREFIX)/share/man/man1|' Makefile

  make
  make cplayrc
}

package() {
  cd "$srcdir/$_gitname-build"
  mkdir -p $pkgdir/usr/{bin,share/man/man1}
  install -D -m644 cplayrc $pkgdir/etc/cplayrc
  make PREFIX=$pkgdir/usr install

}

# vim:set ts=2 sw=2 et:
