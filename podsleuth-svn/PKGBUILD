# Contributor: Hyperair <hyperair@gmail.com>

pkgname=podsleuth-svn
pkgver=53
pkgrel=3
pkgdesc="Tool to discover detailed information about Apple iPods"
arch=('i686' 'x86_64')
url="http://www.banshee-project.org/PodSleuth"
license=('MIT')
depends=('mono>=1.1.10'
         'ndesk-dbus>=0.4'
         'sg3_utils')
makedepends=('mono>=1.1.10'
             'hal>=0.5.6')
provides=('podsleuth=0.6.1')
conflicts=('podsleuth')
install=podsleuth.install
source=()
md5sums=()

_svntrunk=svn://svn.gnome.org/svn/podsleuth/trunk
_svnmod=podsleuth

build() {
  export MONO_SHARED_DIR=$startdir/src/.wabi
  mkdir -p $MONO_SHARED_DIR
  
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -r $startdir/src/$_svnmod-build
  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  #
  # BUILD
  #
  ./autogen.sh --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg/ install
  
  rm -rf $MONO_SHARED_DIR
}
