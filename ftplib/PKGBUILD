# Maintainer: andreas_baumann <abaumann@yahoo.com>
#Maintainer: Nathan O <ndowens04 at gmail dot com>
pkgname=ftplib
pkgver=3.1_1
pkgrel=2
pkgdesc="ftplib is a set of routines that implement the FTP protocol."
url="http://nbpfaus.net/~pfau/ftplib/"
arch=('i686' 'x86_64')
license="LGPL"
depends=()
source=(http://www.nbpfaus.net/~pfau/ftplib/ftplib-3.1-src.tar.gz
        http://nbpfaus.net/~pfau/ftplib/ftplib-3.1-1.patch)
md5sums=('c6af758ccbf806b28f022a587a41d9c5'
         '8af14825ee91abfc1441a66ad009e68b')

build() {
  cd $srcdir/$pkgname-3.1
  patch -p1 < ../ftplib-3.1-1.patch || return 1
  cd linux
  sed -i "s@/usr/local@${pkgdir}/usr@g" Makefile
  make || return 1
  mkdir -p $pkgdir/usr/{bin,lib,include}
  make install || return 1
  install -m0644 libftp.a $pkgdir/usr/lib/
}
