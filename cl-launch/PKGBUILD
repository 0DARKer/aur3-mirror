# -*- shell-script -*-
# Contributor: Eric Schulte <schulte.eric@gmail.com>
pkgname=cl-launch
pkgver=3.018
pkgrel=1
pkgdesc="utility to make Lisp software easily invokable from the command-line"
arch=('any')
url="http://www.cliki.net/cl-launch"
license=('LLGPL')
depends=()
source=('http://common-lisp.net/project/xcvb/cl-launch/cl-launch-3.018.tar.gz')
md5sums=('dc56e13ee3b404581ecb8eda8496ca6f')

build() {
  cd "${srcdir}/${pkgname}"

  ## Build
  make
}

package() {
  cd "${srcdir}/${pkgname}"

  mkdir -p $pkgdir/usr/bin
  make PREFIX=$pkgdir/usr/ install
  ln -s cl-launch $pkgdir/usr/bin/cl
}
