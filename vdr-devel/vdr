#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

case "$1" in
  start)
	stat_busy "Starting VDR"

	/usr/bin/runvdr &

	if [ $? -gt 0 ]; then
		stat_fail
	else
		stat_done
	fi
	;;
  stop)
	stat_busy "Stopping VDR"
	killall runvdr
	killall --quiet --wait /usr/bin/vdr
	if [ $? -gt 0 ]; then
		stat_fail
	else
		stat_done
	fi
	;;
  restart)
	$0 stop
	sleep 1
	$0 start
	;;
  *)
	echo "usage: $0 {start|stop|restart}"
	;;
esac
