# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=openspades
pkgver=0.0.11
pkgrel=1
pkgdesc="A clone of Voxlap Ace of Spades 0.75"
arch=('i686' 'x86_64')
url="https://sites.google.com/a/yvt.jp/openspades/"
license=('GPL3')
depends=('curl' 'glew' 'mesa' 'openal' 'sdl2' 'sdl2_image')
makedepends=('cmake' 'imagemagick')
source=("https://github.com/yvt/openspades/archive/v${pkgver}.tar.gz" "https://github.com/yvt/openspades/releases/download/v${pkgver}/OpenSpades-${pkgver}-Windows-winxp.zip" "openspades.desktop")

build() {
	cd "${srcdir}/openspades-${pkgver}"
	cmake -D CMAKE_INSTALL_PREFIX=/usr -D OPENSPADES_RESDIR=/usr/share/openspades/Resources .
	make OpenSpades
}

package() {
	cd "${srcdir}/openspades-${pkgver}/bin"
	install -Dm755 OpenSpades "${pkgdir}/usr/bin/${pkgname}"
	cd "${srcdir}"
	install -Dm644 "${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
	
	mkdir "${pkgdir}/usr/share/${pkgname}"
	mkdir "${pkgdir}/usr/share/pixmaps"

	cd "${srcdir}/openspades-${pkgver}"
	cp -r Resources "${pkgdir}/usr/share/${pkgname}"
	
	cd "${srcdir}/openspades-${pkgver}/Resources/Icons"
	convert OpenSpades.ico openspades.png
	cp openspades-7.png "${pkgdir}/usr/share/pixmaps/openspades.png"
	
	cd "${srcdir}/OpenSpades-${pkgver}-Windows"
	cp -r Resources "${pkgdir}/usr/share/${pkgname}"
	
	cd "${pkgdir}/usr/share/${pkgname}/Resources"
	rm mkpak.sh
}

md5sums=('fbccb6135be1b01c0421147792cf9861'
         'd634718cfd13297803a4eaea179d6bec'
         '397bf995c84d5ae8d7014eae7d4a1c2d')
