# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=openspades
pkgver=0.0.10
pkgrel=1
pkgdesc="A clone of Voxlap Ace of Spades 0.75"
arch=('i686' 'x86_64')
url="https://sites.google.com/a/yvt.jp/openspades/"
license=('GPL3')
depends=('curl' 'fltk' 'glew' 'mesa' 'openspades-data' 'sdl2')
makedepends=('cmake')
source=("https://codeload.github.com/yvt/openspades/zip/master" "openspades.desktop")
# https://codeload.github.com/yvt/openspades/tar.gz/v${pkgver}

build() {
	cd "${srcdir}/openspades-master"
	# cd "${srcdir}/openspades-${pkgver}"
	cmake -D CMAKE_INSTALL_PREFIX=/usr -D OPENSPADES_RESDIR=/usr/share/openspades-data/Resources .
	make
}

package() {
	cd "${srcdir}/openspades-master/bin"
	# cd "${srcdir}/openspades-${pkgver}/bin"
	install -Dm755 OpenSpades "${pkgdir}/usr/bin/${pkgname}"
	cd "${srcdir}"
	install -Dm644 "${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
}

md5sums=('7d2efd05c2f3bb788772efc7e6949aac'
         '397bf995c84d5ae8d7014eae7d4a1c2d')
