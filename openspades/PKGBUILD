# Maintainer: kusakata <shohei atmark kusakata period com>

pkgname=openspades
pkgver=0.0.9
pkgrel=1
pkgdesc="A clone of Voxlap Ace of Spades 0.75"
arch=('i686' 'x86_64')
url="https://sites.google.com/a/yvt.jp/openspades/"
license=('GPL3')
depends=('curl' 'fltk' 'glew' 'mesa' 'openspades-data' 'sdl')
makedepends=('cmake')
source=("https://codeload.github.com/yvt/openspades/tar.gz/v${pkgver}")

build() {
	cd "${srcdir}/openspades-${pkgver}"
	cmake -D CMAKE_INSTALL_PREFIX=/usr -D OPENSPADES_RESDIR=/usr/share/openspades-data/Resources .
	make
}

package() {
	cd "${srcdir}/openspades-${pkgver}"
	make DESTDIR="$pkgdir" install
	cd "${pkgdir}/usr/bin"
	ls | grep -v -E 'OpenSpades' | xargs rm -r
	mv OpenSpades openspades
}

md5sums=('87b3fa8f11f707d7ad860a8746c06ef4')
