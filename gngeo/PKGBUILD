# Contributor: robb_force <robb_force@holybuffalo.net>

pkgname=gngeo
pkgver=0.7
pkgrel=1
pkgdesc="A command-line NeoGeo Emulator."
url="http://gngeo.berlios.de/"
license="GPL"
arch=(i686)
depends=('zlib' 'sdl_image')
makedepends=(nasm)
source=(http://download.berlios.de/${pkgname}/${pkgname}-${pkgver}.tar.gz)
install=gngeo.install
md5sums=('a91836e6762bbc28ad164ef94b2d00f8')

build() {
  cd $startdir/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install

  # Install the sample configuration file
  install -m644 sample_gngeorc ${startdir}/pkg/usr/share/${pkgname}/
}
