# Contributor: piojo

pkgname=astrill
pkgver=2.7
pkgrel=1
pkgdesc="VPN configuration tool for Astrill's servers"
arch=('x86_64' 'i686')
url="http://astrill.com/"
license=('custom')
depends=()
makedepends=(rpmextract)
if [ "${CARCH}" = 'x86_64' ]; then
    source=('https://www.astrill.com/downloads/astrill-setup-linux64.rpm')
    md5sums=('0d4243df9b3c34212d5d7689169f1f1e')
else
    source=('https://www.astrill.com/downloads/astrill-setup-linux.rpm')
    md5sums=('684f1a6720f936daf4f58cbdde6499b6')
fi

build() {
    rpmextract.sh $source
    mv usr "${pkgdir}"
}
