pkgname=freealchemist
pkgver=0.4
pkgrel=2
pkgdesc="FreeAlchemist is a figure block game written in Python where you have to connect blocks. The three or more blocks connected with the same shape will be replaced by a block with a different shape."
arch=('i686' 'x86_64')
url="http://dakblog.wordpress.com/freealchemist/"
license=('GPL')
depends=('python2' 'pygame')
source=(https://tools.assembla.com/svn/nocopy/users/Dak/freealchemist/$pkgname-$pkgver.gz)
md5sums=('b79ebafd1d13e9403fea929b932bc4ae')


build()
{
    sed -i -e "s/python/python2/g" "$srcdir/usr/games/freealchemist"
    sed -i -e "s/python/python2/g" "$srcdir/usr/share/games/freealchemist/freealchemist.py"
	cp -R "$srcdir/usr" "$pkgdir/usr"
}

