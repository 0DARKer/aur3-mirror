# Maintainer: Patrice Peterson <runiq at archlinux dot us>
# Contributor: Vivien Didelot <vivien+aur@didelot.org>
_ghuser=vivien
pkgname=i3blocks
pkgver=1.2
pkgrel=2
pkgdesc='Define blocks for your i3bar status line'
arch=('any')
url="https://github.com/$_ghuser/$pkgname"
license=('GPL3')
optdepends=('upower: For example battery script'
            'alsa-utils: For example volume script')
source=("https://github.com/$_ghuser/$pkgname/archive/$pkgver.tar.gz")
sha256sums=('6c92956f79cd62ecac5ec3b544bf5da49b10c6e45c1f4d12e3865c9caf544703')

build () {
  make -C "$srcdir/$pkgname-$pkgver" VERSION="$pkgver" PREFIX=/usr
}

package () {
  make -C "$srcdir/$pkgname-$pkgver" VERSION="$pkgver" DESTDIR="$pkgdir" PREFIX=/usr install
}

