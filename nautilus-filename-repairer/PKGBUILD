# Contributor: Juri Hamburg <juri@fail2fail.com>
pkgname=nautilus-filename-repairer
pkgver=0.0.6
pkgrel=1
pkgdesc="Nautilus Filename Repairer is a nautilus extension which provides context menu to change the selected filename to correct encoding if the file has invalid encoding. "
arch=('i686' 'x86_64')
url="http://code.google.com/p/repairer/"
license=('GPL2')
groups=()
depends=('nautilus')
makedepends=('intltool')
source=(http://repairer.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
md5sums=('680bb6ab46687541bd6ff4fe5a16e185') 

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
