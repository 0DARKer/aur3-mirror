pkgname=colobot-gold-data
pkgver=0.1.0_alpha
pkgrel=1
pkgdesc="Data pack for Colobot GOLD real-time strategy game."
arch=('i686' 'x86_64')
url="http://colobot.info"
license=('GPL3')
makedepends=('cmake>=2.8')
source=('https://github.com/colobot/colobot-data/archive/colobot-gold-0.1.0-alpha.zip')
md5sums=('bd04df37753541662b2f818141ad8355')
_archive_dir="colobot-data-colobot-gold-0.1.0-alpha"


build() {
    mkdir -p "$srcdir/$_archive_dir/build"
    cd "$srcdir/$_archive_dir/build"
    cmake "$srcdir/$_archive_dir" -DCMAKE_INSTALL_PREFIX="/usr"
    make
}

package() {
    cd "$srcdir/$_archive_dir/build"
    make DESTDIR="$pkgdir/" install
}
