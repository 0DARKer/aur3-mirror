pkgname=turpial-git
pkgver=20121211
pkgrel=1
pkgdesc="A multi-interface Twitter client written in Python"
arch=(any)
url=http://code.google.com/p/turpial/
license=(GPL3)
depends=(python2-pygame pygtk python2-notify python2-simplejson python2-babel pywebkitgtk notification-daemon gstreamer0.10-python python2-gtkspell hspell libturpial-git)
makedepends=(setuptools git)
conflicts=(turpial)

_gitroot=git://github.com/satanas/Turpial.git
_gitname=Turpial

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
     git clone -b development $_gitroot
  fi

  cd "$srcdir/$_gitname"
  python2 setup.py install --root="$pkgdir" --optimize=1
}
