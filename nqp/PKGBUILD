# Maintainer: Marcin Karpezo <sirmacik at gmail dot com>
pkgname=nqp
pkgver=2011.09
pkgrel=4
pkgdesc="Compiler for quickly generating PIR routines from Perl6-like code"
arch=('i686' 'x86_64')
url='https://github.com/perl6/nqp#readme'
license=(PerlArtistic)
depends=('parrot>=3.8.0')
makedepends=('perl>=5.8')
source=(https://github.com/downloads/perl6/nqp/$pkgname-$pkgver-8-ge3d5c8b.tar.gz)
md5sums=('4115de7113904b89bbf988d2b96cdc13')

build() {
    cd "$srcdir/$pkgname"

    echo 2011.09-8-ge3d5c8b > VERSION 
    perl Configure.pl --with-parrot=/usr/bin/parrot --prefix=/usr
    make -j1
}
package() {
    cd "$srcdir/$pkgname"
    make -j1 DESTDIR="$pkgdir/" install
}

