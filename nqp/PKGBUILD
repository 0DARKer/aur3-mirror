# Maintainer: spider-mario <spidermario@free.fr>
# Contributor: Marcin Karpezo <sirmacik at gmail dot com>
pkgname=nqp
pkgver=2012.02
pkgrel=3
pkgdesc="Compiler for quickly generating PIR routines from Perl6-like code"
arch=('i686' 'x86_64')
url='https://github.com/perl6/nqp#readme'
license=(PerlArtistic)
depends=('parrot>=4.1.0')
makedepends=('perl>=5.8')
options=('!makeflags')
source=(https://github.com/downloads/perl6/nqp/$pkgname-$pkgver.tar.gz)
md5sums=('3bbae61c7d426e3a72d83338b2d1659c')

build() {
    cd "$srcdir/$pkgname-$pkgver"

    perl Configure.pl --with-parrot=/usr/bin/parrot --prefix=/usr
    make
}
package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}

