# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=ibutils
pkgver=1.5.7
pkgrel=2
pkgdesc="OpenIB Mellanox infiniband diagnostic tools"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('opensm' 'perl' 'tcl')
optdepends=('graphviz' 'swig')
source=("http://www.openfabrics.org/downloads/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('82c7e95508f38caec4e8b8b5437598e0')
sha512sums=('fe0c26b58ae0f15ecfff3d0f536ea681740628eff6e0600299ba61412e2e83c677a30684e96af187548c141fc913faf704643996720c8cf12b609b6114bed6ed')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
