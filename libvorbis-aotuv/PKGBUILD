# Contributor: Robert Gregor <gimpΘpop·de>

pkgname=libvorbis-aotuv
pkgver=b5.7
pkgrel=3
_releasedate=20090301
pkgdesc="A fork of libvorbis intended to provide better quality sound at low to medium bitrates."
url="http://www.geocities.jp/aoyoume/aotuv"
license=("custom")
depends=("libogg>=1.0")
makedepends=("pkgconfig")
conflicts=(libvorbis)
provides=(libvorbis=1.3.1)
#install=("aotuv.install")
source=("http://www.geocities.jp/aoyoume/aotuv/source_code/${pkgname}_${pkgver}.tar.bz2")
md5sums=('ce074770632c8e545293fd6c25de5d41')
arch=('i686' 'x86_64')
#options=(!libtool)

build() {
	cd $srcdir/aotuv-${pkgver}_${_releasedate} || return 1
	chmod +x configure || return 1
	./configure --prefix=/usr --disable-oggtest || return 1
	make || return 1
	make DESTDIR=$pkgdir install || return 1
	install -v -m 644 -D $srcdir/aotuv-${pkgver}_${_releasedate}/COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING || return 1
}
