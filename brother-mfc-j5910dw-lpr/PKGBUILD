# Maintainer: Emmanuel GAUDE <gaude.emmanuel@gmail.com>

_manufacturer='brother'
_model='mfc-j5910dw'
_version='1.1.3-1'
_driver='lpr'

pkgname="$_manufacturer-$_model-$_driver"
pkgver=${_version//-/_}
pkgrel=1
pkgdesc="$_driver driver for the $_manufacturer $_model printer"

url="http://welcome.solutions.brother.com/bsc/public_s/id/linux/en/download_prn.html#MFC-J5910DW"
license=('custom:brother_end_user_license_agreement')

source=("http://www.brother.com/pub/bsc/linux/dlf/${_model//-/}$_driver-$_version.i386.deb"
        'LICENSE')
md5sums=('e7fa39caaa39079a5b3598f2919e7bde' '78f626fac3772c42f9d2de3ffe128469')
arch=('i686' 'x86_64')
if [ "$CARCH" = "i686" ]; then
    depends=('glibc')
else
    depends=('lib32-glibc' 'sh')
fi
optdepends=("$_manufacturer-$_model-cupswrapper: For printing via CUPS.")

package() {
  cd $srcdir
  ar x ${_model//-/}$_driver-$_version.i386.deb || return 1
  tar -xzvf $srcdir/data.tar.gz -C $pkgdir || return 1

  cd $startdir
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE" || return 1
}

# vim:set ts=2 sw=2 et:
