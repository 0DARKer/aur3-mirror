# Contributor: Jason Yellick < jkyellic AT ncsu DOT edu>
pkgname=libphidget
pkgver=2.1.6.20090317
pkgrel=1
pkgdesc="A library for accessing Phidget brand hardware interface controllers and sensors"
arch=('i686' 'x86_64')
url="http://www.phidgets.com/"
license=('LGPL3')
depends=('glibc');
makedepends=('make' 'gcc' 'jdk')
source=("http://www.phidgets.com/downloads/libraries/Phidgetlinux_2.1.6.20090317.tar.gz")
md5sums=('2e88ff96062839a499379d719a8b61ea')

build() {
  cd "$srcdir/Phidgetlinux/phidget21"
  make JAVAHOME=/opt/java || return 1
  mkdir -p "$pkgdir/etc/udev/rules.d"
  mkdir -p "$pkgdir/usr/lib"
  mkdir -p "$pkgdir/usr/include"
  make INSTALLPREFIX="$pkgdir" install || return 1
  install -m 644 udev/99-phidgets.rules "$pkgdir/etc/udev/rules.d/"
}
