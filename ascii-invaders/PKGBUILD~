pkgname=ascii-invaders
pkgver=0.1b
pkgrel=2
pkgdesc="Space invaders in ascii characters using ncurses"
arch=('i686')
url="http://www.ip9.org/munro/invaders/"
license=('GPL')
depends=('ncurses')
source=(http://www.ip9.org/munro/invaders/invaders"$pkgver".tgz)
md5sums=('fbb3f99a1b198bf4222d26a55665482e')

build() {
  cd $startdir/src/invaders
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  cp ascii_invaders $startdir/pkg/usr/bin
}
