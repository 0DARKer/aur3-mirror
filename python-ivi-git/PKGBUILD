# Maintainer: Alex Forencich <alex@alexforencich.com>
pkgname=python-ivi-git
pkgver=0.1.r8.ge8d861f
pkgrel=1
pkgdesc="Python Interchangeable Virtual Instrument Library"
arch=('any')
url="https://github.com/alexforencich/python-ivi"
license=('MIT')
depends=('python' 'python-numpy')
makedepends=('git')
provides=('python-ivi')
optdepends=(
  'python-vxi11: VXI11 instrument support'
  'python-usbtmc: USBTMC instrument support'
)

_gitroot='https://github.com/alexforencich/python-ivi.git'
_gitname='python-ivi'

source=("$_gitname::git+$_gitroot")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_gitname"
  git describe --tags --long | sed -E 's/^v//;s/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir/$_gitname"
}

package() {
  cd "$srcdir/$_gitname"
  python setup.py install --prefix=/usr --root="$pkgdir/" --optimize=1
}

