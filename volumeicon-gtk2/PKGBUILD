pkgname=volumeicon-gtk2
pkgver=0.4.6
pkgrel=1
pkgdesc="Lightweight volume control that sits in systray"
arch=(any)
url="http://softwarebakery.com/maato/volumeicon.html"
license=('GPL')
depends=(gtk2 alsa-lib libnotify)
conflicts=(volumeicon volumeicon-xfce volumeicon-pulsefix volumeicon-git)
provides=(volumeicon)
source=(http://softwarebakery.com/maato/files/volumeicon/volumeicon-$pkgver.tar.gz)
md5sums=('7fd6dffba823e9c529d151d4789ff992')

build() {
	cd "${srcdir}/volumeicon-${pkgver}"
	for file in $(find -name '*.c' -or -name '*.h'); do
	sed -i 's|#include <glib/[^>]*>|#include <glib.h>|' $file
	done
	./configure --prefix=/usr --enable-notify
	make
}

package() {
	cd "${srcdir}/volumeicon-${pkgver}"

	make DESTDIR="${pkgdir}" install
}