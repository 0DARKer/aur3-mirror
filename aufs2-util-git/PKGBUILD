# $Id$
# Contributor: Paul Mattal <paul@mattal.com>
# Maintainer: Paul Mattal <pjmattal@elys.com>
pkgname=aufs2-util-git
pkgver=20090504
pkgrel=1
pkgdesc="Another Unionfs Implementation that supports NFS branches. GIT version."
arch=('i686' 'x86_64')
url="http://aufs.sourceforge.net/"
license=('GPL2')
depends=('glibc')
replaces=('aufs-utils')
source=()
md5sums=()

build() {
  git clone http://git.c3sl.ufpr.br/pub/scm/aufs/aufs2-util.git ${pkgname} || return 1
  cd $srcdir/${pkgname} || return 1
  # build
  make || return 1
  # install
  mkdir -p $pkgdir/{sbin,usr/bin,etc/default/aufs}
  make DESTDIR=$pkgdir install || return 1
}
