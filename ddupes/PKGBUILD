# Maintainer: Florian Bruhin (The Compiler) <archlinux.org@the-compiler.org>

pkgname=ddupes
pkgver=2.3
pkgrel=1
pkgdesc="Extends fdupes action to directories. Includes ffdupes (fast ddupes)."
arch=(any)
url="http://www.pietrobattiston.it/ddupes"
license=('GPL3')
depends=('python2')
options=(!emptydirs)
source=("http://www.pietrobattiston.it/_media/ddupes:ddupes-2.3.tar.gz")
md5sums=('8f892d54af943c3fb0fa424c1c7279f6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}" --optimize=1
}

