pkgname=stoken-git
pkgver=20130618
pkgrel=1
pkgdesc="RSA Software Token for Linux"
arch=('i686' 'x86_64')
license=('GPL')
url="https://github.com/cernekee/stoken/tree/fedora-v1"
depends=('libtomcrypt' 'gtk2')
makedepends=('git')

_gitroot="git://github.com/cernekee/stoken.git"
_gitname="stoken"
_branch="fedora-v1"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname} -b ${_branch}
    cd ${_gitname}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

	./autogen.sh
  ./configure --prefix=/usr \
      --enable-shared
  make
}

package() {
	cd "$srcdir/${_gitname}"
  make DESTDIR="$pkgdir" install
}
