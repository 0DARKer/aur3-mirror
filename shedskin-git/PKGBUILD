# Maintainer: Elkin Cruz <agnelkincc@gmail.com>
# Contributor: Alexander Rødseth <rodseth@gmail.com>
pkgname=shedskin-git
_gitname=shedskin
pkgver=20110528
pkgrel=1
pkgdesc="A Python to C++ compiler"
arch=('any')
url="http://code.google.com/p/shedskin/"
license=('GPL3')
depends=('pcre' 'gc' 'python2')
makedepends=('git' 'python2')
conflicts=('shedskin' 'shedskin-svn')
source=()
md5sums=()

_gitroot="git://gitorious.org/shedskin/mainline.git"
_gitname="shedskin"

build()
{
  if [ -d "${srcdir}/${_gitname}" ]
  then
    msg "Updateing local repository..."
    cd "${srcdir}/${_gitname}"
    git pull origin master || return 1
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi
  msg "git checkout done or server timeout"

  if [ -d "${srcdir}/${_gitname}-build" ]
  then
    rm -rf "${srcdir}/${_gitname}-build"
  fi

  msg "Starting make..."

  cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build/${_gitname}"

  # Python 2 fix
  echo "#!/usr/bin/python2" > shedskin
  echo "import shedskin" >> shedskin
  echo "shedskin.main()" >> shedskin
}

package()
{
  cd "${srcdir}/${_gitname}-build/${_gitname}"
  
  # Install the wrapperscript
  mkdir -p "${pkgdir}/usr/bin"
  install -Dm755 shedskin "${pkgdir}/usr/bin/shedskin"

  cd "${srcdir}/${_gitname}-build"

  # Install using setup.py
  python2 setup.py install --prefix="${pkgdir}/usr"

  # Install the license
  cd "${srcdir}/${_gitname}-build/doc"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}