pkgname=sigram-bin
_pkgname=sigram
pkgver=0.5.5.1
pkgrel=1
pkgdesc="A different telegram client from Sialan.labs"
arch=('i686' 'x86_64')
url="http://labs.sialan.org/projects/sigram"
license=('GPL')
depends=('qt5-base' 'qt5-declarative')
if [[ $CARCH == x86_64 ]]; then
  source=("http://dl.labs.sialan.org/${_pkgname}_$pkgver-x64.tar.xz")
  sha512sums=('02f4aa0daace1a121112541276cf94a90a7591f17b9b93d9fa87ffc00e4397fad8f673c16964ed48f48683e052ecdaf682d92addf175963643c21bfa356db996')
else
  source=("http://dl.labs.sialan.org/${_pkgname}_$pkgver-x32.tar.xz")
  sha512sums=('ac195503b3e62205327c39fb38b6b0a7fd36ddc0012f33243281641af8a2ef68418ef2928b201d14bb15384eb0472f2c17fd43ad92524199c1cbdcdc222d0d59')
fi

package() {
  cd $srcdir

  install -d $pkgdir/{opt,usr/bin}
  mv $_pkgname $pkgdir/opt/$_pkgname

  ln -s /opt/$_pkgname/Sigram $pkgdir/usr/bin/$_pkgname
}