# Contributor: Andreas dot Wagner at em dot uni-frankfurt dot de

pkgname=biblatex-biber
pkgver=0.8.2
pkgrel=1
pkgdesc="A BibTeX replacement for users of biblatex"
url="http://biblatex-biber.sourceforge.net"
arch=('any')
license=('PerlArtistic')
depends=('perl-xml-libxml-simple' 'perl-readonly-xs' \
  'texlive-bibtexextra>=2010.20942-1' 'perl-file-slurp-unicode' 'perl-xml-writer' \
  'perl-text-bibtex>=0.52' 'perl-list-allutils' 'perl-data-dump' \
  'perl-log-log4perl' 'perl-regexp-common' 'perl-config-general' \
  'perl-latex-decode>=0.3' 'perl-unicode-collate>=0.72' \
  'perl-ipc-run' 'perl-xml-libxslt' 'perl-data-compare' 'perl-date-simple' )
optdepends=('perl-sleepycat-dbxml: support for Berkeley DBXML databases' )
conflicts=('biblatex-biber-git')
# source=(http://downloads.sf.net/biblatex-biber/${pkgname}.tar.gz)
source=(http://downloads.sf.net/project/$pkgname/$pkgname/current/$pkgname.tar.gz)

build() {
  cd ${pkgname}-v${pkgver}
  perl Build.PL installdirs=vendor destdir="$pkgdir/" || return 1
  ./Build || return 1
  ./Build install || return 1
  install -d $startdir/pkg/usr/bin
  ln -s /usr/lib/perl5/vendor_perl/bin/biber $startdir/pkg/usr/bin/biber
}

md5sums=('3e1a4c95b46c73b5e45b68c3edc90dc7')
