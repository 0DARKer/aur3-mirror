pkgname=ps3
pkgver=0.3.0
pkgrel=2
pkgdesc="A utility for monitoring process activity (think top) in a 3D bar chart"
makedepends=()
depends=( \
	libpng \
	sdl \
	mesa \
	libgl \
	)
conflicts=()
url="http://user.tninet.se/~uhu537u/"
license=""

source=( \
	http://user.tninet.se/~uhu537u/${pkgname}-${pkgver}.tar.bz2 \
	ps3 \
	)

install=()

md5sums=( \
	'00bda637cb9f360c008f46701c52b855' \
	'eceaaca7b108de01af985b0e5a512a50' \
	)

build() {
	cd $startdir/src/$pkgname-$pkgver
	make || exit 1
	mkdir -p $startdir/pkg/usr/bin || exit 1
	install -m 755 -o root -g root \
		$pkgname $startdir/pkg/usr/bin/ps3-bin || exit 1
	install -m 755 -o root -g root \
		$startdir/$pkgname $startdir/pkg/usr/bin/ || exit 1
	mkdir -p $startdir/pkg/usr/share/$pkgname
	cp -r font $startdir/pkg/usr/share/$pkgname/font
#	install -d -m 755 -o root -g root \
#		$startdir/pkg/usr/share/$pkgname/font
#	cp font/* $startdir/pkg/usr/share/$pkgname/font/
#	chown root:root $startdir/pkg/usr/share/$pkgname/font/*
#	chmod 644 $startdir/pkg/usr/share/$pkgname/font/*
}

