# Maintainer: Oleg Smirnov <oleg.smirnov@gmail.com>
pkgname=r-cran-mclust
pkgver=3.4.7
pkgrel=1
pkgdesc="Model-based clustering and normal mixture modeling including Bayesian regularization"
url="http://cran.r-project.org/web/packages/mclust/index.html"
license=('custom')
arch=('i686' 'x86_64')
makedepends=('gcc-fortran')
depends=('r')
source=(http://cran.r-project.org/src/contrib/mclust_3.4.7.tar.gz)
build() {
    mkdir -p ${pkgdir}/usr/lib/R/library
    cd ${srcdir}
    R CMD INSTALL mclust -l ${pkgdir}/usr/lib/R/library
    rm -f ${pkgdir}/usr/lib/R/library/R.css
    if [ -f ${srcdir}/mclust/LICENSE ]; then
         mkdir -p ${pkgdir}/usr/share/licenses/r-cran-mclust
         install -m 644 ${srcdir}/mclust/LICENSE ${pkgdir}/usr/share/licenses/r-cran-mclust
    elif [ -f ${srcdir}/mclust/LICENCE ]; then
         mkdir -p ${pkgdir}/usr/share/licenses/r-cran-mclust
         install -m 644 ${srcdir}/mclust/LICENCE ${pkgdir}/usr/share/licenses/r-cran-mclust
    fi
}
md5sums=('3d306533bfeca080d0ce31bf2c484cb8')
