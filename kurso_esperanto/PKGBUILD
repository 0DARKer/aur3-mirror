# Contributor: kalio

pkgname=kurso_esperanto
pkgver=4.1
pkgrel=1
pkgdesc="A multimedia computer program for teaching yourself Esperanto"
url="http://kurso.com.br"
license=('unknown')
arch=('i686')
depends=('libjpeg6' 'libxext' 'libsm')
optdepends=('mpg123: default sound player')
install=kurso_esperanto.install
source=('http://kurso.com.br/kurso.i386.tar.gz')
md5sums=('555ff6f6a504a081c9b5fb49838937d9')

build() {
  cd $srcdir/
  mkdir -p $pkgdir/usr/share/kurso
  mkdir -p $pkgdir/etc
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/lib
  tar xvzf kurso-inst.tar.gz -C $pkgdir/usr/share/kurso

  mv $pkgdir/usr/share/kurso/bin/kurso3 $pkgdir/usr/bin/kurso
  cp $pkgdir/usr/share/kurso/lib/libborqt-6.9-qt2.3.so $pkgdir/usr/lib/libborqt-6.9-qt2.3.so
  mv $pkgdir/usr/share/kurso/lib/libborqt-6.9-qt2.3.so $pkgdir/usr/lib/libborqt-6.9.0-qt2.3.so

  echo "path=/usr/share/kurso" > $pkgdir/etc/kurso.conf

  rm -r $pkgdir/usr/share/kurso/bin $pkgdir/usr/share/kurso/lib
}
