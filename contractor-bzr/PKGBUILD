# Maintainer: Ner0

pkgname=contractor-bzr
pkgver=45
pkgrel=1
pkgdesc="An extension service that allows apps to use the exposed functionality of registered apps"
arch=('i686' 'x86_64')
url="https://launchpad.net/contractor"
license=('GPL3')
depends=('glib2' 'libgee')
makedepends=('bzr' 'vala' 'cmake')

package() {
  bzr branch lp:contractor -r 45
  cd contractor
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="$pkgdir/" install
}
