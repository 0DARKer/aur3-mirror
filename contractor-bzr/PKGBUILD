# Maintainer: crazyelf5

pkgname=contractor-bzr
pkgver=8
pkgrel=1
pkgdesc="Service for sharing data with registered apps"
arch=('i686' 'x86_64')
url="https://launchpad.net/contractor"
license=('GPL3')
depends=('glib2' 'libgee')
makedepends=('bzr' 'vala' 'cmake')

build()
{
  bzr branch lp:contractor
  cd contractor
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
  make DESTDIR="${pkgdir}" install
}

