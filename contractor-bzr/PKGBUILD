# Maintainer: crazyelf5

pkgname=contractor-bzr
pkgver=latest
pkgrel=1
pkgdesc="Service for sharing data with registered apps"
arch=('i686' 'x86_64')
url="https://launchpad.net/contractor"
license=('GPLv3')
depends=('glib2' 'libgee')
makedepends=('bzr' 'vala' 'cmake')

_bzrtrunk=lp:${pkgname%-*}
_bzrmod=${pkgname%-*}

build() {
  cd "${srcdir}"

  msg "Connecting to the server...."

  if [ ! -d ${_bzrmod} ]; then
    bzr co ${_bzrtrunk} ${_bzrmod}
  else
    bzr up ${_bzrmod}
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  rm -rf ${_bzrmod}-build
  cp -r ${_bzrmod} ${_bzrmod}-build
  cd ${_bzrmod}-build
  mkdir build; cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}"/${_bzrmod}-build/build
  make DESTDIR="${pkgdir}" install
}
