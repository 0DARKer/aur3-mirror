pkgname=crark-cuda-latest
name=crark-cuda
pkgver=3.3d
download=crark33-linux.rar
pkgrel=1
pkgdesc="A command-line utility for RAR 2.x-3.x password cracking, uses Password Cracking Library 2.0 that supports special password recovery language. Highly optimized for all modern processors. with CUDA support"
arch=('i686' 'x86_64')
url="http://www.crark.net/"
license="unknown"
options=('!strip')
depends=('bash' 'unrar')
provides=('crark-cuda-latest')
source=('http://www.crark.net/download/crark33-linux.rar')
md5sums=('55e9f3a5f6496e6d1a99950b619c03e3')
install=install

build() {
  mkdir -p ${pkgname}-${pkgver}
  unrar x -xcrackme ${download} ${pkgname}-${pkgver}
  cd ${srcdir}/${pkgname}-${pkgver}
}
package() {
  mkdir -p ${pkgdir}/opt/${name}
  cp -R ${srcdir}/${pkgname}-${pkgver}/* ${pkgdir}/opt/${name} 
}
