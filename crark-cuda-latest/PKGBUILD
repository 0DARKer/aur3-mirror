# Modified: Gustavo Alvarez <sl1pkn07 [at] gmail [dot] com>

pkgname=crark-cuda-latest
name=crark
pkgver=3.3
download=crark33-linux.rar
pkgrel=2
pkgdesc="A command-line utility for RAR 2.x-3.x password cracking, uses Password Cracking Library 2.0 that supports special password recovery language. Highly optimized for all modern processors. with CUDA support"
arch=('i686' 'x86_64')
url="http://www.crark.net/"
license="unknown"
depends=('bash' 'unrar')
conflicts=('crark-latest')
provides=('crark-cuda-latest')
source=('http://www.crark.net/download/crark33-linux.rar' 'crark.sh' 'crark-hp.sh')
md5sums=('8caaf4ef0aae266385aaf50066763d62'
         'bcd08ad7616e174475e953a3a1695c92'
         'e0b93f025c8caa07bfaabf8aeb900917')
# "_lang=" options: "english", "spanish" or "russian"
_lang=english
build() {
  
  mkdir -p ${pkgname}-${pkgver}
  unrar x -xcrackme ${download} ${startdir}/src/${pkgname}-${pkgver}
  cd ${startdir}/src/${pkgname}-${pkgver}
  
 
  mkdir -p ${startdir}/pkg/usr/share/${name}
  mkdir -p ${startdir}/pkg/usr/bin

  cp * ${startdir}/pkg/usr/share/${name} 
  ln -sv ${_lang}.def ${startdir}/pkg/usr/share/${name}/password.def
  ln -sv ../share/${name}/${name} ${startdir}/pkg/usr/bin/${name}
  ln -sv ../share/${name}/${name}-hp ${startdir}/pkg/usr/bin/${name}-hp

  chmod a+r ${startdir}/pkg/usr/share/${name}/*.def

}
