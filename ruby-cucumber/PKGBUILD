# Maintainer: Rogof <fake.bios@gmail.com>
pkgname=ruby-cucumber
pkgver=0.10.2
pkgrel=1
pkgdesc="Behaviour Driven Development with elegance and joy"
arch=(any)
url="http://cukes.info/"
license=('GPL')
depends=('ruby' 'ruby-diff-lcs>=1.1.2' 'ruby-builder>=2.1.2' 'ruby-term-ansicolor>=1.0.5' 'ruby-gherkin>=2.3.5')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/cucumber-$pkgver.gem)
noextract=(cucumber-$pkgver.gem)
sha1sums=('54437ce433eff4e7f567e58c74491c5cf13e529d')

package() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" cucumber-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
