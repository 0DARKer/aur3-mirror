# Maintainer: rogof <fake.bios@gmail.com>
pkgname=ruby-cucumber
pkgver=0.10.0
pkgrel=2
pkgdesc="Behaviour Driven Development with elegance and joy"
arch=(any)
url="http://cukes.info/"
license=('GPL')
depends=('ruby' 'ruby-diff-lcs>=1.1.2' 'ruby-builder>=2.1.2' 'ruby-term-ansicolor>=1.0.5' 'ruby-gherkin>=2.3.2')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/cucumber-$pkgver.gem)
noextract=(cucumber-$pkgver.gem)
sha1sums=('06349b790b9782cb6c73ef276b86acdc43223c60')

package() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" cucumber-$pkgver.gem
}

# vim:set ts=2 sw=2 et:
