pkgname=qmd5generator
_pkgname=QMd5Generator
pkgver=1.0
pkgrel=1
pkgdesc="Simple and useful MD5 has generator"
arch=('i686' 'x86_64')
url='http://qt-apps.org/content/show.php/QMD5Generator?content=145040'
license=('GPL')
depends=('qt')
source=("hhttp://qt-apps.org/CONTENT/content-files/145040-${_pkgname}.zip")
md5sums=('3d19b55d2024296727532f424428ec4c')

build() {
  cd "${srcdir}/${_pkgname}"
  qmake
  make 
}

package() {
  cd "${srcdir}/${_pkgname}"
  install -Dm 755 ${_pkgname} ${pkgdir}/usr/bin/${_pkgname}
} 
