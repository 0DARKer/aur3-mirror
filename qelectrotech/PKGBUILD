# Contributor: Nick B <Shirakawasuna at gmail _dot_com>
# Maintainer: moostik <mooostik_at_gmail.com>
pkgname=qelectrotech
pkgver=0.3
pkgrel=1
pkgdesc="An electric diagram editor"
arch=('i686' 'x86_64')
url="http://qelectrotech.tuxfamily.org/"
install='qelectrotech.install'
license=('GPL2')
depends=('qt4' 'shared-mime-info')
md5sums=('4a7b9b01dcde4b7fcb814ec621d037ad')
source=(http://download.tuxfamily.org/qet/tags/20130928/${pkgname}-${pkgver}-src.tar.gz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-src
  sed -i s,usr\/local,usr,g qelectrotech.pro
  qmake-qt4
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-src
  make INSTALL_ROOT=${pkgdir} install
}
