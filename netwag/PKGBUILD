# Contributor: Kyle Keen <keenerd@gmail.com>
pkgname=netwag
pkgver=5.36.0
pkgrel=2
pkgdesc="GUI for a kit of 222 network tools."
arch=('i686' 'x86_64')
url="http://www.laurentconstantin.com/en/netw/netwag/"
license=('GPL')
depends=('netwox' 'tk')
makedepends=()
source=(http://www.laurentconstantin.com/common/netw/netwag/download/v5/$pkgname-$pkgver-src.tgz 
config.dat genemake.patch)
md5sums=('940a9aef75fc46dfd4e5254c6fe79f28'
         'ecf489fb5e5e906d612079910e1c2db3'
         'b6cedb78399157778508e4be714aee77')

build() {
  cd "$srcdir"/$pkgname-$pkgver-src/src
  cp "$srcdir"/config.dat ./
  patch genemake "$startdir"/genemake.patch
  ./genemake
  make
  make install
}
