pkgname=vba-m-gtk
pkgver=1.8.0.1001
pkgrel=1
pkgdesc="Gameboy Advance Emulator combining features of all VBA forks - GTK GUI"
arch=(i686 x86_64)
url="http://vba-m.ngemu.com"
license=('GPL')
groups=()
depends=('gtkmm' 'sdl' 'glibmm' 'libpng' 'zlib' 'cairo' 'mesa' 'gtkglext' 'gtkglextmm' 'libxv' 'hicolor-icon-theme')
makedepends=('cmake' 'pkgconfig' 'nasm')
source=(http://ufpr.dl.sourceforge.net/project/vbam/VBA-M%20GTK%2B%20svn%20r1001/vbam_$pkgver-1.tar.gz 'gvbam-linking.patch')
install='vba-m.install'
md5sums=('f146c77569edde42f324a8d3f625136b' '9332539870bedf4c7488c5196e90b0c6')

build() {
  cd $srcdir/vbam-$pkgver
  #patch -Np1 -i $srcdir/gvbam-linking.patch || return 1
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DDATA_INSTALL_DIR:PATH=share/vbam/gtk -DENABLE_WX=OFF
  make || return 1
  make DESTDIR=$pkgdir install
}
