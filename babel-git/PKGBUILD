pkgname=babel-git
pkgver=28
pkgrel=1
pkgdesc="Package manager for the Nimrod programming language."
arch=(i686 x86_64)
url="https://github.com/nimrod-code/babel"
license=("BSD")
makedepends=(nimrod git)
source=("${pkgname%-*}::git+https://github.com/nimrod-code/babel.git")
md5sums=('SKIP')

pkgver () {
	cd "$srcdir/${pkgname%-*}"
	echo $(git rev-list --count master)
}

build() {
	cd "${srcdir}/${pkgname%-*}"
	nimrod c -d:release babel.nim
}

package() {
	cd "${srcdir}/${pkgname%-*}"
	install -Dm755 "babel" "$pkgdir/usr/bin/babel"
	install -Dm644 "license.txt" "$pkgdir/usr/share/licenses/babel/license.txt"
}
