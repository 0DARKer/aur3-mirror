pkgname=a8
provides=('a8')
pkgver=0.1
pkgrel=2
pkgdesc="The Abominade IDE"
arch=('any')
url="http://code.google.com/p/abominade/"
license=('GPL')
depends=('python2' 'python2-argparse' 'pygtkhelpers-hg' 'python2-logbook' 'python2-psutil' 'vte')
makedepends=('python2-distribute')
source=(http://pypi.python.org/packages/source/a/a8/a8-${pkgver}.tar.gz)
md5sums=('41c42da7d33509086256f25f2b38b716')
install=${pkgname}.install

build() {
   cd "${srcdir}/a8-${pkgver}"
   python2 setup.py build || exit 1
   python2 setup.py install --root="${pkgdir}" --optimize=1 || exit 1
}

