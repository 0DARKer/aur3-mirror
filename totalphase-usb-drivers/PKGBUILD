pkgname=totalphase-usb-drivers
pkgver=2.00
pkgrel=1
pkgdesc="USB Drivers for Total Phase's bus analyzers"
arch=('any')
url="http://www.totalphase.com"
license=('unknown')
depends=()
options=('!strip')
source=(http://www.totalphase.com/download/zip/tp-usb-drivers-v${pkgver}.zip)
md5sums=('f1eba99c591ab7c81b2a2c56e0213ef2')

build() {
  return 0
}

package() {
  install -m 644 -D ${srcdir}/tp-usb-drivers-v${pkgver}/linux/99-totalphase.rules ${pkgdir}/etc/udev/rules.d/99-totalphase.rules
}

