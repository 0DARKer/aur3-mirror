# Maintainer: crazyelf5

pkgname=scratch-bzr
pkgver=389
pkgrel=1
pkgdesc="A text editor from the Elementary project"
arch=('i686' 'x86_64')
url="https://launchpad.net/scratch"
license=('GPL3')
depends=('gtksourceview3' 'libgee' 'gobject-introspection' 'glib2'
         'gconf' 'gtk3' 'granite-bzr' 'pango' 'dconf' 'hicolor-icon-theme')
makedepends=('bzr' 'cmake' 'vala' 'desktop-file-utils')
install=${pkgname}.install

_bzrtrunk=lp:${pkgname%-*}
_bzrmod=${pkgname%-*}

build() {
  cd "${srcdir}"

  msg "Connecting to the server...."

  if [ ! -d ${_bzrmod} ]; then
    bzr co ${_bzrtrunk} ${_bzrmod}
  else
    bzr up ${_bzrmod}
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  rm -rf ${_bzrmod}-build
  cp -r ${_bzrmod} ${_bzrmod}-build
  cd ${_bzrmod}-build
  mkdir build; cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make -j1 DESTDIR="${pkgdir}" install
  rm -rf "${srcdir}"/${_bzrmod}-build
}
