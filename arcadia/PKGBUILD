# Maintainer:  Francesco Colista <francesco.colista@gmail.com>
# Contributor: Christoph Zeiler <rabyte*gmail>

pkgname=arcadia
pkgver=0.12.2
pkgrel=0
pkgdesc="A light IDE for Ruby"
arch=('any')
url="http://arcadia.rubyforge.org/"
install=$pkgname.install
license=('RUBY')
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/76932/$pkgname-$pkgver.gem)
md5sums=('054f9aa0cfdf14cbea99d07f82d7438d')
build() {
  cd "$srcdir"
}

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install $pkgname-$pkgver.gem --ignore-dependencies -i "$pkgdir$_gemdir" --no-user-install -n "$pkgdir/usr/bin"
  ln -sf arc "$pkgdir/usr/bin/$pkgname"
}
