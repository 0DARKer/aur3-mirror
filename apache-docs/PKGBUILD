pkgname=apache-docs
_pkgname=httpd
pkgver=2.4.12
pkgrel=1
pkgdesc='Apache HTTP Server Documentation'
arch=('any')
url='https://httpd.apache.org/docs/'
license=('APACHE')
source=(http://www.apache.org/dist/httpd/docs/httpd-docs-${pkgver}.en.zip)
sha256sums=('2d5c8500b717cc6c75039479172023c0cf59ce09a2144bb88ec62a604483c67e')

package() {

  install -d "$pkgdir"/usr/share/doc/$_pkgname
	cp -ra "$srcdir"/httpd-docs-$pkgver.en/* \
    "$pkgdir"/usr/share/doc/$_pkgname/
}
