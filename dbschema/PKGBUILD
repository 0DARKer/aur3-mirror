# Maintainer: Boris Shomodjvarac <shomodj@gmail.com>

pkgname=dbschema
pkgver=6.0.0
pkgrel=1
pkgdesc='DbSchema is an integrated universal database tool, featuring graphical layouts, Relational Data Browse, Query Builder, SQL Editor, schema deployment and synchronization and many more.'
arch=('i686' 'x86_64')
url='http://www.dbschema.com/'
license='custom'
depends=('java-runtime')
source=("http://www.dbschema.com/DbSchema.zip" "dbschema")

 
build(){
  install -dm755 ${pkgdir}/opt
  cp -r DbSchema ${pkgdir}/opt/${pkgname}
  
  chmod 755 ${pkgdir}/opt/${pkgname}/DbSchema.sh

  install -Dm755 dbschema ${pkgdir}/usr/bin/dbschema
}

md5sums=('66cba1a2155008bd4aed593b2b694527'
         '6c73b1b14f18a5ec67665da711a6b15b')
