# custom variables
_hkgname=cblrepo
_licensefile=LICENSE-2.0

# PKGBUILD options/directives
pkgname=cblrepo
pkgver=0.2.2
pkgrel=1
pkgdesc="Tool to maintain a database of CABAL packages and their dependencies"
url="http://hackage.haskell.org/package/${_hkgname}"
license=("OtherLicense")
arch=('i686' 'x86_64')
makedepends=("ghc=7.0.3-2"
             "haskell-cabal=1.10.1.0"
             "haskell-unixutils=1.36"
             "haskell-ansi-wl-pprint=0.6.3"
             "haskell-bytestring=0.9.1.10"
             "haskell-cmdargs=0.7"
             "haskell-directory=1.1.0.0"
             "haskell-filepath=1.2.0.0"
             "haskell-json=0.4.4"
             "haskell-mtl=2.0.1.0"
             "haskell-process=1.0.1.5"
             "haskell-tar=0.3.1.0"
             "haskell-unix=2.4.2.0"
             "haskell-zlib=0.5.3.1")
depends=()
options=('strip')
source=("http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz")

sha256sums=("0cb1e8244eaa81259ae6433fbc62338fd46730e258257859b0d53028bf39aab8")

# PKGBUILD functions
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure -O --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
}

package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
