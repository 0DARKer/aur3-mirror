# Maintainer: Steven Allen <steven {at} stebalien {dot} com>

_realpkg=gksu-polkit
pkgname=$_realpkg-git
pkgver=20130426
pkgrel=1
pkgdesc="Replacement for gksu that uses PolicyKit"
arch=('x86_64' 'i686')
url="https://live.gnome.org/gksu"
license=('GPL3')
depends=('polkit' 'libgee06' 'gtk2' 'startup-notification' 'dbus-glib' 'xorg-xauth')
makedepends=('git' 'gtk-doc' 'vala' 'intltool')
provides=('gksu-polkit')
conflicts=('gksu-polkit')
options=(!libtool !buildflags !makeflags)
source=('git://git.debian.org/~kov/gksu-polkit.git')

pkgver() {
  date +"%Y%m%d"
}

build() {
  cd "$srcdir/$_realpkg"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_realpkg"
  make DESTDIR="$pkgdir/" install
}
md5sums=('SKIP')
# vim:set ts=2 sw=2 et:
