# Contributor: Figue <ffigue at gmail dot com>

pkgname=abrowser-bin
pkgver=11.0
pkgrel=2
pkgdesc="Binary version of Abrowser, safe and easy web browser from Mozilla"
arch=('i686' 'x86_64')
license=('MPL' 'GPL' 'LGPL')
url="https://trisquel.info/en/wiki/abrowser-help"
depends=('gtk2' 'gcc-libs' 'libidl2' 'mozilla-common' 'nss>=3.12.10' 'libxt'
         'libxrender' 'hunspell' 'startup-notification' 'mime-types' 'dbus-glib'
         'alsa-lib' 'libevent' 'sqlite3>=3.7.4' 'libnotify' 'desktop-file-utils'
         'libvpx' 'lcms' 'nspr>=4.8.8' 'libevent' 'libpng' 'cairo')

s_pkgname=abrowser
build=build1
ubuntu_ver=11.10.1
trisquel_ver=5.5trisquel5

if [ "${CARCH}" = 'x86_64' ]; then
  ARCH='amd64'
  md5sums=('fba5e06c68ffd7bdfb34018901410237')
elif [ "${CARCH}" = 'i686' ]; then
  ARCH='i386'
  md5sums=('ac12578b56b20fa6fe61ef4b7dfd36d2')
fi

source=("http://us.archive.trisquel.info/trisquel/pool/main/f/firefox/${s_pkgname}_${pkgver}+${build}-0ubuntu0.${ubuntu_ver}+${trisquel_ver}_${ARCH}.deb")

build(){
  tar xzvf ${srcdir}/data.tar.gz -C ${pkgdir}/
}

package(){
  msg2 "Cleaning up unwanted files..."
  rm -rv "${pkgdir}"/{etc/apport,etc/apparmor.d,usr/share/apport,usr/share/lintian,usr/share/menu}
}
