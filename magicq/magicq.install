post_install() {
    update-mime-database -n usr/share/mime
    update-desktop-database -q
    chmod 777 /opt/magicq
    chmod -R 777 /opt/magicq/{log,show,web,thumbs,backuparchive,convert,audio}
}
post_upgrade() {
    post_install
}

post_remove() {
    update-mime-database -n usr/share/mime
    update-desktop-database -q
}
