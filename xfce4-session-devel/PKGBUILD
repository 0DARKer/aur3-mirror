# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=xfce4-session-devel
pkgver=4.7.3
pkgrel=1
pkgdesc="A session manager for Xfce (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('gtk2>=2.14' 'libxfce4ui-devel>=4.7.0' 'libwnck' 'xfconf-devel' 'perl' 'libxfce4util-devel>=4.7.0' 'xorg-iceauth' 'hicolor-icon-theme' 'xfce4-panel-devel' 'dbus>=1.0.0' 'dbus-glib>=0.73' 'upower')
makedepends=('pkgconfig>=0.9.0' 'intltool' 'xfce4-settings-devel')
replaces=('xfce4-session' 'xfce4-session-git')
conflicts=('xfce4-session' 'xfce4-session-git')
options=('!libtool')
install=xfce4-session.install
source=(http://archive.xfce.org/src/xfce/xfce4-session/4.7/xfce4-session-${pkgver}.tar.bz2)
md5sums=('ae6c98b4419cc4b651a7e68c4afdf432')

build() {
  cd ${srcdir}/xfce4-session-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static \
    --disable-gnome --enable-session-screenshots \
    --disable-libgnome-keyring --enable-panel-plugin \
    --disable-hal
  make
}

package() {
	cd ${srcdir}/xfce4-session-${pkgver}
	make DESTDIR=${pkgdir} install
}
