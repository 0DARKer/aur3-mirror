# Contributor: Loui Chang <louipc.ist@gmail.com>
pkgname=xgalaga
pkgver=2.0.34
pkgrel=3
pkgdesc="It's Galaga, you know how to play Galaga, stop bothering me."
url="http://rumsey.org/xgal.html"
license=('GPL')
depends=('libxpm')
arch=('i686')
source=('http://dl.sourceforge.net/xgalaga/xgalaga_2.0.34.orig.tar.gz'
    'build_includes-xgalaga-2.0.34.patch'
    'altmask-xgalaga-2.0.34.diff')
md5sums=('9f7ee685e9c4741b5f0edc3f91df9510'
         'b528e42e20b1e07aae8385fe56c51cd0'
         '94fac9d26483683b0c1565f67cc78db8')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 < ../altmask-xgalaga-2.0.34.diff 
  patch -p1 < ../build_includes-xgalaga-2.0.34.patch
  ./configure --exec-prefix=/usr/bin --prefix=/usr/lib/xgalaga \
  --with-xpm-lib=/usr/lib
  make || return 1
  make prefix=$startdir/pkg/usr/lib/$pkgname \
	exec_prefix=$startdir/pkg/usr/bin install
}

