# Contributor: Alexander Markov <apsheronets@gmail.com>

pkgname=kde-adblock-improvement
pkgver=0.0.5
pkgrel=4
pkgdesc="Makes Konqueror AdBlock more like the Firefox one."
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php?content=38915"
license=('GPL')
depends=('kdelibs')
makedepends=('cmake>=2.3')
source=(http://www.kde-apps.org/CONTENT/content-files/38915-adblock-${pkgver}.tgz)
md5sums=('c1b487cf7ef501a0a6a1fc42616563f1')
options=('libtool')

build() {
  cd ${startdir}/src/adblock
	[ "$KDEDIR" = "" ] && source /etc/profile.d/kde.sh
  cmake -DCMAKE_INSTALL_PREFIX=$KDEDIR || return 1
  make DESTDIR=${startdir}/pkg install
}
