# Maintainer: garion < garion @ mailoo.org >
# Old maintainer: buddabrod < buddabrod @ gmail.com >

pkgname=kaffeine-kde4-svn
pkgver=1143914
pkgrel=4
pkgdesc="Multimedia player for KDE4"
arch=('i686' 'x86_64')
url="http://kaffeine.kde.org"
license=('GPL')
depends=('kdelibs>=4.2.0' 'kdebase-runtime' 'xine-lib')
makedepends=('subversion' 'cmake' 'automoc4')
provides=('kaffeine')
conflicts=('kaffeine')
replaces=('kaffeine')

_svntrunk="svn://anonsvn.kde.org/home/kde/trunk/extragear/multimedia/kaffeine"
_svnmod=kaffeine

build() {
  cd ${startdir}/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
     svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir ${startdir}/src/kaffeine/build
  cd ${startdir}/src/kaffeine/build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=RELEASE .. || return 1
  make || return 1
  make DESTDIR="${startdir}/pkg" install || return 1
}
