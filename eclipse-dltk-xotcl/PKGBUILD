# Contributor: Jonathan Wiersma <archaur at jonw dot org>
pkgname=eclipse-dltk-xotcl
pkgver=2.0
pkgrel=1
_pkgdate=201006161315
pkgdesc="XOTcl IDE for Eclipse"
arch=('i686' 'x86_64')
url="http://www.eclipse.org/dltk/"
license=('EPL')
depends=("eclipse-dltk-tcl>=$pkgver")
source=("http://mirror.csclub.uwaterloo.ca/eclipse/technology/dltk/downloads/drops/R$pkgver/R-$pkgver-$_pkgdate/${pkgname#eclipse-}-R-$pkgver-$_pkgdate.zip")
md5sums=('bc2dc2ace14e817c0644082d5f2389fb')

build() {
	cd $srcdir || return 1
	install -dm755 $pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/ || return 1
	find eclipse -type f -exec install -Dm644 {} \
		$pkgdir/usr/share/eclipse/dropins/${pkgname#eclipse-}/{} \; || return 1
}
