# Contributor: matthiaskrgr <matthias · krueger _strange_curved_character_ famsik · de

pkgname=pacmanlog2gource
pkgver=0.9
pkgrel=1
pkgdesc="Bash script which converts a copy of /var/log/pacman.log into a gource-readable logfile"
arch=('any')
url="https://aur.archlinux.org/packages.php?ID=53027"
license=('GPL')
depends=('gource' 'calc' 'diffutils' 'gawk' 'sed')
optdepends=('ffmpeg: to generate a video from the ppm stream'
            'libtheora: to get an ogv video as suggested in the script')
source=('pacmanlog2gource.sh'
        'changelog')
sha1sums=('42a54d69babea914d62cba379c52556a7e569744'
          '4b0263a75c80a75320e7a95ca77617475baf9a3e')

build() {
  install -Dm 755 $srcdir/pacmanlog2gource.sh ${pkgdir}/usr/bin/pacmanlog2gource
}
