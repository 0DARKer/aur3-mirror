# Contributeur: yimm ( yimboka@gmail.com )
pkgname=init-functions
pkgver=4.0
pkgrel=1
pkgdesc="Functions used at init time by the Linux Standard Base"
arch=('x86_64')
url="http://www.linuxbase.org"
license=('GPL')
source=(http://archive.ubuntu.com/ubuntu/pool/main/l/lsb/lsb_4.0-0ubuntu7.tar.gz)
md5sums=('9c00801b7d9f1c5004275c2a9ccd5178')

build() {
  cd $srcdir/lsb-$pkgver
  mkdir -p $startdir/pkg/lib/lsb
  cp $pkgname $startdir/pkg/lib/lsb/$pkgname
} 
