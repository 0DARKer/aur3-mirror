pkgname=turbogears
pkgver=1.1.2
pkgrel=1
pkgdesc="A rapid web development megaframework"
arch=('i686' 'x86_64')
url="http://www.turbogears.org"
license=('GPL')
depends=('python')
source=('http://www.turbogears.org/download/tgsetup.py')
md5sums=('e0a7f5b046529425d0380959e709c097')
options=(!strip !zipman)

build() {
cd $srcdir
mkdir -p $pkgdir/usr/bin
mkdir -p $pkgdir/usr/lib/python2.7
mkdir -p $pkgdir/usr/lib/python2.7/site-packages
PYTHONPATH=$pkgdir/usr/lib/python2.7/site-packages python2.7 tgsetup.py -U -d $pkgdir/usr/lib/python2.7/site-packages --prefix=$pkgdir/usr
# site.py is the same on both accounts. So lets remove this one and
# use the one that's already there
rm $pkgdir/usr/lib/python2.7/site-packages/site.py*
}
