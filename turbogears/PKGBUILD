pkgname=turbogears
pkgver=1.0.8
pkgrel=1
pkgdesc="A rapid web development megaframework"
arch=('i686' 'x86_64')
url="http://www.turbogears.org"
license=('GPL')
depends=('python')
source=('http://www.turbogears.org/download/tgsetup.py')
md5sums=('21dccc636e5e8b4a8ad4931713199afb')
options=(!strip !zipman)

build() {
	cd $srcdir
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/lib/python2.5
	mkdir -p $pkgdir/usr/lib/python2.5/site-packages
	PYTHONPATH=$pkgdir/usr/lib/python2.5/site-packages python tgsetup.py -U -d $pkgdir/usr/lib/python2.5/site-packages --prefix=$pkgdir/usr 
	# site.py is the same on both accounts. So lets remove this one and
	# use the one that's already there
	rm $pkgdir/usr/lib/python2.5/site-packages/site.py*
}

