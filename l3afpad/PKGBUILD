# $Id: PKGBUILD 110473 2011-02-19 16:41:59Z ibiru $
# Maintainer: Aaron Griffin <aaron@archlinux.org>
# Contributor: Link Dupont <link@subpop.net>

# http://www.calno.com/l3afpad/l3afpad-0.8.18.1.1.tar.xz

pkgname=l3afpad
pkgver=0.8.18.1.1
pkgrel=2
pkgdesc="A notepad clone for GTK+ 2.0"
arch=('i686' 'x86_64')
url="http://www.calno.com/l3afpad"
license=('GPL')
depends=('gtk3' 'desktop-file-utils')
makedepends=('intltool')
install=l3afpad.install
source=(http://www.calno.com/${pkgname}/${pkgname}-${pkgver}.tar.xz)
md5sums=('0ba6656c55fab0e705ad594225333a8c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --enable-chooser
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  echo 'StartupNotify=true' >> "${pkgdir}/usr/share/applications/l3afpad.desktop"
}
