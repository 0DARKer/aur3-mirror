pkgname=l3afpad
pkgver=0.8.18.1.3
pkgrel=1
pkgdesc="Simple plain text editor for GTK3."
arch=('i686' 'x86_64')
url="http://l3afpad.blogspot.com"
license=('GPL')
depends=('gtk3' 'desktop-file-utils')
makedepends=('intltool')
install=l3afpad.install
source=(http://www.calno.com/${pkgname}/${pkgname}-${pkgver}.tar.xz)
md5sums=('bf3de53bef19b7cba486e2b9b1cb9627')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i 's/\(^[a-z0-9]\{40\}\) \+[0-9]\+/\1 /' SHA1SUMS
  sha1sum -c SHA1SUMS
  ./configure --prefix=/usr --enable-emacs
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  echo 'StartupNotify=true' >> "${pkgdir}/usr/share/applications/l3afpad.desktop"
}
