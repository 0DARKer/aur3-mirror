# Maintainer: Tianjiao Yin <ytj000@gmail.com>

pkgname=boost-build-nightly
pkgdesc="Boost build system, Nightly build"
pkgver=20110423
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.boost.org/doc/tools/build/"
license=('boost')
depends=('boost' 'gcc' 'python')
optdepends=('python2: for python2 bindings')
conflicts=('boost-build')
source=('site-config.jam')
md5sums=('d4fba3cc9ac2e49582ababf3c13915ba')

build() {
	BD_NAME="boost-build"
	BD_SRC="${BD_NAME}.tar.bz2"
	BD_SRC_URI="http://boost.org/boost-build2/${BD_SRC}"

	msg "Downloading..."
	wget -N ${BD_SRC_URI}
	msg "Extracting..."
	bsdtar -x -f ${BD_SRC}
	msg "Packaging..."

	mkdir -p "${pkgdir}/usr/share"
	mkdir -p "${pkgdir}/etc"
	rm -Rf "${BD_NAME}/engine"
	cp -R "${BD_NAME}" "${pkgdir}/usr/share"
	install -m644 "${srcdir}/site-config.jam" "${pkgdir}/etc/"
}
