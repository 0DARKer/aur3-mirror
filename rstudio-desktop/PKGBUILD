# Maintainer: Ben Ward <benjamin.ward@bathspa.org>
pkgname=rstudio-desktop
_altname=rstudio-rstudio
_numb=99a1eff
pkgver=0.93.24
pkgrel=1
pkgdesc="A new integrated development environment (IDE) for R"
arch=('i686' 'x86_64')
url="http://www.rstudio.org/"
license=('AGPL')
depends=('qt' 'r' 'java-runtime')
makedepends=('git' 'cmake' 'boost' 'apache-ant' 'unzip' 'openssl' 'pam' 'bzip2')
source=(https://github.com/rstudio/rstudio/tarball/v0.93.24)
provides=('rstudio-desktop')
md5sums=('18cd747e19bb42d9845d4c87c327f86e')

build() {
  cd "${srcdir}/${_altname}-${_numb}"
  
 #Checking for ANT
 which ant &> /dev/null
 if [ $? -gt 0 ]; then
 msg "Warning: Ant Is Not Accessible"
 exit 1
 fi  

 # install qt sdk
 # msg "Downloading and installing Qt SDK"
 # cd "${srcdir}/${_altname}-${_numb}/dependencies/linux"
 # ./install-qt-sdk

  # Install gwt
  msg "Downloading and installing gwt"
  cd "${srcdir}/${_altname}-${_numb}/dependencies/common"
  ./install-dependencies-java

  # Configure and build
  msg "Configuring the makefile with cmake"
  mkdir "${srcdir}/${_altname}-${_numb}/build"
  cd "${srcdir}/${_altname}-${_numb}/build"
  cmake -DRSTUDIO_TARGET=Desktop -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr/local/rstudio ..
}

package() {
  msg "Starting make..."
  cd "${srcdir}/${_altname}-${_numb}/build"
  make DESTDIR="$pkgdir/" install
}
