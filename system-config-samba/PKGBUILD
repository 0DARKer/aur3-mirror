# Maintainer: Boudhayan Gupta <me at BaloneyGeek dot com>
pkgname=system-config-samba
pkgver=1.2.63
pkgrel=1
pkgdesc="The Samba configuration tool by Red Hat"
url="http://fedoraproject.org/wiki/SystemConfig/samba"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=('samba' 'libuser' 'gksu')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install="${pkgname}.install"
source=("https://fedorahosted.org/released/system-config-samba/${pkgname}-${pkgver}.tar.bz2"
        "${pkgname}-archlinux.patch.lzma")
md5sums=('818c71bc1131d2294e19f945af6fafc8'
         '988f25af6a4fb1a8b2302063839aefab')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  lzcat ../${pkgname}-archlinux.patch.lzma | patch -p1
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 doc/${pkgname}.8 "$pkgdir/usr/share/man/man8/${pkgname}.8"
}
