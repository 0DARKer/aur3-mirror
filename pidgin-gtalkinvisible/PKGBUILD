# Maintainer: Martti KÃ¼hne <mysatyre at gmail dot com>

pkgname=pidgin-gtalkinvisible
_realname=gtalkinvisible
pkgver=0.923
pkgrel=1
pkgdesc="Pidgin plugin to allow GTalk Invisible status"
url="http://fahhem.com/pidgin/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('pidgin')
source=(http://fahhem.com/pidgin/${_realname}.tar.gz)
md5sums=('eecef9fd97bad09d838e89ffc478b070')

build() {
  cd ${srcdir}/${_realname}
  gcc -fPIC --shared -o ${_realname}.so -Llibpurple $(pkg-config --libs --cflags pidgin) gtalkinvisible.c
  install -D -m644 ${_realname}.so "$pkgdir/usr/lib/pidgin/${_realname}.so"
}
