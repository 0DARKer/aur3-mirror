# Maintainer: Martti KÃ¼hne <mysatyre at gmail dot com>

pkgname=pidgin-gtalkinvisible
pkgver=0.923
pkgrel=2
pkgdesc="Pidgin plugin to allow GTalk Invisible status"
url="http://fahhem.com/pidgin/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('pidgin')
makedepends=('libpurple')
source=(http://fahhem.com/pidgin/${pkgname#*-}.tar.gz)
md5sums=('eecef9fd97bad09d838e89ffc478b070')

build() {
  cd ${srcdir}/${pkgname#*-}
  gcc -fPIC --shared -o ${pkgname#*-}.so -Llibpurple $(pkg-config --libs --cflags pidgin) gtalkinvisible.c
  install -D -m644 ${pkgname#*-}.so "$pkgdir/usr/lib/pidgin/${pkgname#*-}.so"
}
