# Maintainer: JokerYu <dayushinn@gmail.com>
# Contributor: lilydjwg <lilydjwg@gmail.com>
pkgname=koala
pkgver=1.3.0
pkgrel=2
pkgdesc="A GUI application for Less, Sass, Compass and CoffeeScript compilation."
arch=('i686' 'x86_64')
url="http://koala-app.com/"
license=('Apache')
optdepends=('ruby: The Sass compiled function need system has been installed ruby.')
options=(!strip)
if [ "$CARCH" = "i686" ];then
  source=("http://oklai.github.com/koala-package/Stable/v1.3.0/${pkgname}_${pkgver}_i386.deb")
  md5sums=('3927a23ceb38fca80aade859ec65e553')
elif [ "$CARCH" = "x86_64" ];then
  source=("http://oklai.github.com/koala-package/Stable/v1.3.0/${pkgname}_${pkgver}_amd64.deb")
  md5sums=('13fdd90e50a2256c6cc8ea838138dc9d')
fi
package() {
  tar zxfp ${srcdir}/data.tar.gz -C ${pkgdir}/
  chmod -R 755 ${pkgdir}/usr
  mkdir -p ${pkgdir}/usr/lib
  ln -sf /usr/lib/libudev.so ${pkgdir}/usr/lib/libudev.so.0
}
