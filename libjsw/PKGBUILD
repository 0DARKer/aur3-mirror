pkgname=libjsw
pkgver=1.5.6
pkgrel=1
pkgdesc="Joystick Calibration Programm"
arch=( 'i686' 'x86_64' )
url="http://unknown"
license=('GPL')
depends=( 'xf86-input-joystick' 'glib' 'gtk' )
makedepends=()
source=($pkgname-$pkgver.tar.gz)
md5sums=()

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cd libjsw
  make -f Makefile.Linux || return 1
  make PREFIX=$pkgdir install || return 1
}
