# Maintainer: Anton Larionov <diffident dot cat at gmail dot com>

pkgname=katawa-shoujo-act1
pkgver=5
pkgrel=1
pkgdesc="Bishoujo-style visual novel game that tells a story of a young man and five other girls suffering with varying disabilities"
arch=('any')
url="http://katawa-shoujo.com/"
license=('cc-by-nc-nd-3.0' 'MIT')
install=$pkgname.install
source=('http://dl.katawa-shoujo.com/a1v5/mirrors/[4ls]_katawa_shoujo_act1_v5_[linux-x86][97624142].tar.bz2'
	'katawa-shoujo-act1.sh')
md5sums=('e831006f62e820178b5dd492e72bfec1'
         'bf86257517caf3d582d181e3aebbc1d0')

build() {
  # copy main files
  cd "$srcdir/Katawa Shoujo Act 1 v5-linux-x86"
  install -dm755 "${pkgdir}/usr/share/${pkgname}"
  cp -r common "${pkgdir}/usr/share/${pkgname}"
  cp -r game "${pkgdir}/usr/share/${pkgname}"
  cp -r lib "${pkgdir}/usr/share/${pkgname}"
  cp -r renpy "${pkgdir}/usr/share/${pkgname}"
  install -m644 "Katawa Shoujo Act 1.py" "${pkgdir}/usr/share/${pkgname}"
  install -m755 "Katawa Shoujo Act 1.sh" "${pkgdir}/usr/share/${pkgname}"

  # copy game manual
  install -D -m644 "Game Manual.pdf" "${pkgdir}/usr/share/doc/${pkgname}/gamemanual.pdf"

  # copy license
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"

  # copy bash script
  install -D -m755 "${srcdir}/katawa-shoujo-act1.sh" "${pkgdir}/usr/bin/${pkgname}"
}

# vim:set ts=2 sw=2 et:
