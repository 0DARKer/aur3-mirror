# Maintainer: Tarjaizaid <tarjaizaid@gmail.com>
pkgname=gns3-unofficial
pkgver=0.8.2BETA
pkgrel=1
pkgdesc="Gns3 beta version that allows simulation of complex networks."
arch=('i686' 'x86_64')
url="http://www.gns3.net/"
license=('GPL')
depends=('python2-pyqt' 'python2-sip' 'dynamips-community' 'inetutils')
optdepends=('qemu' 'wireshark' 'virtualbox' 'virtualbox-sdk' 'xdotool')
conflicts=(gns3)
replaces=(gns3-vbe)
source=("http://sourceforge.net/projects/gns-3/files/GNS3/0.8.2/GNS3-0.8.2-BETA-src.tar.bz2"
        'setup.py.patch')
md5sums=('5cff88dd4a04185c2552f3837eec429a'
         '81b045a73a30edde2f0c7a52c6576fad')
build() {
  cd ${startdir}
  patch -Np1 < setup.py.patch
  cd ${srcdir}/GNS3-0.8.2-BETA-src
  python2 setup.py build
  python2 setup.py install --prefix  ${pkgdir}/usr
  gzip ./docs/man/gns3.1
  install -D -m 644 ./docs/man/gns3.1.gz ${pkgdir}/usr/share/man/man1/gns3.1.gz
  install -D -m 755 ${srcdir}/GNS3-0.8.2-BETA-src/qemuwrapper/qemuwrapper.py ${pkgdir}/usr/share/GNS3/qemuwrapper.py
  install -D -m 755 ${srcdir}/GNS3-0.8.2-BETA-src/qemuwrapper/pemubin.py ${pkgdir}/usr/share/GNS3/pemubin.py
  install -D -m 755 ${srcdir}/GNS3-0.8.2-BETA-src/vboxwrapper/vboxwrapper.py ${pkgdir}/usr/share/GNS3/vboxwrapper.py
  install -D -m 755 ${srcdir}/GNS3-0.8.2-BETA-src/vboxwrapper/vboxcontroller_4_1.py ${pkgdir}/usr/share/GNS3/vboxcontroller_4_1.py
  install -D -m 755 ${srcdir}/GNS3-0.8.2-BETA-src/vboxwrapper/vboxtestcase.py ${pkgdir}/usr/share/GNS3/vboxtestcase.py
  install -D -m 644 ${srcdir}/GNS3-0.8.2-BETA-src/baseconfig.txt ${pkgdir}/usr/share/GNS3/baseconfig.txt
}
