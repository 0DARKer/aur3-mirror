pkgname=linux-phc-optimize
pkgver=0.1
pkgrel=2
pkgdesc="Script to determine optimal voltage values for linux-phc."
url="http://ubuntuforums.org/showthread.php?t=786402"
depends=('linux-phc' 'cpuburn')
arch=('any')
license=('GPL')
source=(http://www.s3pp.de/misc/linux-phc-optimize.bash
http://www.s3pp.de/misc/functions.bash
linux-phc-optimize)
md5sums=('bff95d656e94ce1d146b362b73fb6b57' '94d880d5d036dec1e240688d49202db2' 'fdd9fc8f9420a04996b2cf021ec2ed33')
build() {
	cd "$startdir/pkg"
	install -Dm755 "$srcdir/$pkgname.bash" "$pkgdir/usr/share/$pkgname/$pkgname.bash"
	install -m644 "$srcdir/functions.bash" "$pkgdir/usr/share/$pkgname/functions.bash"
	install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
