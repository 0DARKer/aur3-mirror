pre_install() {
    groupadd -r shinken
    useradd -r -g shinken -d /dev/null -s /bin/false shinken > /dev/null
}

post_install() {
    chown -R shinken:shinken /var/lib/shinken
}

post_remove() {
    userdel shinken
    groupdel shinken
}

