pre_install() {
    groupadd -r shinken
    useradd -r -g shinken -d /var/lib/shinken -s /bin/false shinken > /dev/null
}

post_install() {
    chown -R shinken:shinken /var/lib/shinken
}

post_remove() {
    rm -rf /usr/lib/python2.7/site-packages/Shinken-0.5-py2.7.egg-info
    userdel shinken
}

