pre_install() {
    groupadd -r shinken
    useradd -r -g shinken -d /var/lib/shinken -s /bin/false shinken > /dev/null
}

post_install() {
    chown -R shinken:shinken /var/lib/shinken
}

post_upgrade() {
    chown -R shinken:shinken /var/lib/shinken
}

post_remove() {
    userdel shinken
}

