# Contributor: Eric Qiao <chanceclever at gmail dot com>

pkgname=jap
pkgver=00.12.005
pkgrel=1
pkgdesc="Surfing the internet anonymously and unobservably"
arch=('i686' 'x86_64')
url="http://anon.inf.tu-dresden.de/index_en.html"
license=('unknown')
source=('http://anon.inf.tu-dresden.de/jap/JAP.jar')
noextract=('JAP.jar')
md5sums=('1f3b67d71b4073d12e15cfd8fc3ea919')

build()
{
	cd ${startdir}/src/
	mkdir -p ${startdir}/pkg/opt/jap/

	echo "[Desktop Entry]" >> ${startdir}/src/jap.desktop
	echo "Categories=Application;Network;" >> ${startdir}/src/jap.desktop
	echo "Comment=JAP makes it possible to surf the internet anonymously and unobservably." >> ${startdir}/src/jap.desktop
	echo "Encoding=UTF-8" >> ${startdir}/src/jap.desktop
	echo "Exec=java -jar /opt/jap/JAP.jar" >> ${startdir}/src/jap.desktop
	echo "GenericName=JAP" >> ${startdir}/src/jap.desktop
	echo "Hidden=false" >> ${startdir}/src/jap.desktop
	echo "Name=JAP" >> ${startdir}/src/jap.desktop
	echo "Terminal=false" >> ${startdir}/src/jap.desktop
	echo "Type=Application" >> ${startdir}/src/jap.desktop

	install -m644 -D ${startdir}/JAP.jar ${startdir}/pkg/opt/jap/JAP.jar
	install -m644 -D ${startdir}/src/jap.desktop ${startdir}/pkg/usr/share/applications/jap.desktop
}
