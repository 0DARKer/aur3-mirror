# Maintainer: p2k <Patrick.Schneider@uni-ulm.de>
# Contributor: Tom K <tomk@runbox.com>
pkgname=keyutils
pkgver=1.4
pkgrel=1
pkgdesc="Userspace tools for the kernel key management system"
url="http://people.redhat.com/~dhowells/keyutils/"
license=('GPL' 'LGPL')
arch=('i686' 'x86_64')
source=(http://people.redhat.com/~dhowells/keyutils/keyutils-$pkgver.tar.bz2)
depends=('glibc')
backup=('etc/request-key.conf')
md5sums=('e168c1bdaf5aa93c2cbf8a5e7f8ef27b')

build() {
  cd "$srcdir/keyutils-$pkgver"
  make || return 1
  make BINDIR=/usr/bin SBINDIR=/usr/sbin LIBDIR=/usr/lib \
  DESTDIR="$pkgdir" install
}

