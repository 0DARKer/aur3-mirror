pkgname=stardict-english_turkish
pkgver=1.0
pkgrel=1
pkgdesc="English-Turkish dictionary for Stardict"
arch=('i686' 'x86_64')
depends=('stardict')
url="http://stardict.sourceforge.net"
license=('custom')
md5sums=('b96cddd619a33a11ee023f6173ff82fd')
source=($pkgname.tar.bz2)

build() {
	cd $srcdir/$pkgname
	mkdir -p $pkgdir/usr/share/stardict/dic/
	
	install -m 644 english_turkish.tab.idx.oft english_turkish.tab.dict.dz english_turkish.tab.idx english_turkish.tab.ifo $pkgdir/usr/share/stardict/dic/
}
