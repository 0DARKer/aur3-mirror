# Maintainer: Alan Davies <alan.n.davies@gmail.com>

pkgname=librdmacm
pkgver=1.0.13
pkgrel=1
pkgdesc="librdmacm provides a userspace RDMA Communication Managment API."
arch=('i686' 'x86_64')
license=('OpenIB.org BSD')
url="http://www.openfabrics.org"
source=(http://www.openfabrics.org/downloads/rdmacm/${pkgname}-${pkgver}.tar.gz)
depends=(libibverbs)
md5sums=('2281aa8bf47caf34819842f79e3f9759')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make -j1 DESTDIR="${pkgdir}" install || return 1
}
