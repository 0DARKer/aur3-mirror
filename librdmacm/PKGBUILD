# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=librdmacm
pkgver=1.0.16
pkgrel=1
pkgdesc="Userspace RDMA Connection Manager"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibverbs')
optdepends=('ibacm: assistant communication manager')
source=("http://www.openfabrics.org/downloads/rdmacm/${pkgname}-${pkgver}.tar.gz")
# cksum start
md5sums=('a0a94092b6a75a35f47f7d379c8cc8be')
sha512sums=('1f2e5c9eea2de43ec4378ae703a24fec03e947a755eeea3e59803bbfedfeaf214640250fae92a382b41bb9d14c679591842608bb59e5ff442734d2d916f7d187')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var \
             #--with-ib_acm
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}