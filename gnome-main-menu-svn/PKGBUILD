# Contributor: Ronald van Haren <ronald.archlinux.org>

pkgname=gnome-main-menu-svn
pkgver=561
pkgrel=1
pkgdesc="Novell SLED Gnome main-menu applet"
url="http://www.novell.com/"
arch=('i686' 'x86_64')
license=('GPL2' 'LGPL2')
depends=('gnome-panel' 'libgtop' "networkmanager>=0.7.1") 
makedepends=('intltool' 'pkgconfig' 'subversion' 'gnome-common' 'gtk-doc')
optdepends=('libbeagle: search bar')
install=gnome-main-menu.install
options=('!libtool' '!emptydirs')
conflicts=('gnome-main-menu')
provides=('gnome-main-menu')
source=()
md5sums=()
_svntrunk="http://svn.gnome.org/svn/gnome-main-menu/trunk"
_svnmod="trunk"


build() {
  cd ${srcdir}

    if [ -d ${_svnmod}/.svn ]; then
    (cd ${_svnmod} && svn up -r ${pkgver})
  else
    svn co ${_svntrunk} --config-dir ./ -r ${pkgver} ${_svnmod}
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r ${_svnmod} ${_svnmod}-build
  cd ${_svnmod}-build

  ./autogen.sh --prefix=/usr
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=${pkgdir} install || return 1

  mkdir -p ${pkgdir}/usr/share/gconf/schemas
  gconf-merge-schema ${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas ${pkgdir}/usr/etc/gconf/schemas/*.schemas
  rm -rf ${pkgdir}/usr/etc/gconf/schemas

  rm -rf ${srcdir}/${_svnmod}-build
}

