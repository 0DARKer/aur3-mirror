pkgname=srun3000
pkgver=ubuntu9.10
pkgrel=1
pkgdesc="Srun3000 client for linux"
url="http://www.srun.com/"
arch=('i686')
license=('custom')
source=(srun_client_ubuntu9.10.tgz)
md5sums=('33e41f279f516501028340dd8446e59b')
package() {
	install -d -m 755 ${pkgdir}/usr/share/srun3000/src/
	install -D -m 644 ${srcdir}/srun_client_ubuntu9.10/srunsoft/src/srun_client.ui ${pkgdir}/usr/share/srun3000/src/
	install -D -m 755 ${srcdir}/srun_client_ubuntu9.10/srunsoft/auth ${pkgdir}/usr/share/srun3000
	install -D -m 755 ${srcdir}/srun_client_ubuntu9.10/srunsoft/srun_client ${pkgdir}/usr/share/srun3000
	install -d -m 755 ${pkgdir}/usr/bin/
	ln -s ${pkgdir}/usr/share/srun3000/auth ${pkgdir}/usr/bin/auth
	install -d -m 755 ${pkgdir}/usr/share/applications/
	install -D -m 755 ${srcdir}/srun_client_ubuntu9.10/srunsoft/宽带认证.desktop ${pkgdir}/usr/share/applications/
}
