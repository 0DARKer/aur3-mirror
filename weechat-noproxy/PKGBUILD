# Contributor: kludge (drkludge@rat-patrol.org)

pkgname=weechat-noproxy
pkgver=0.2.6
pkgrel=2
pkgdesc="Fast, light & extensible IRC client (curses UI), patched to allow per-server proxy toggle"
arch=(i686 x86_64)
license=('GPL')
url="http://weechat.flashtux.org"
depends=('perl>=5.10' 'python>=2.5' 'ruby' 'gnutls>=2.4.1' 'lua' 'aspell')
provides=('weechat')
conflicts=('weechat')
install=$pkgname.install
source=(${url}/download/weechat/-$pkgver.tar.bz2
	http://darkk.net.ru/weechat/weechat-defaults.patch)
options=(!libtool)
md5sums=('ccdecf663b0050a23049acb4b9a76193'
         '5e4c491f6cf3388081404443934970bf')

build()
{

  mv weechat-${pkgver} ${pkgname}-${pkgver}
  cd $startdir/src/$pkgname-$pkgver

  patch -p1 < $startdir/weechat-defaults.patch

  ./configure --prefix=/usr --with-debug=0 LDFLAGS="-lm -ldl" || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1

}
