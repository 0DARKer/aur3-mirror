# Maintainer: Joao Cordeiro <jlcordeiro at gmail dot com>
# Contributor: Joekey joekey1@gmail.com
pkgname=trigger
pkgver=0.5.2.1 
pkgrel=3
pkgdesc="Free OpenGL rally car racing game"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/trigger-rally/"
license=('GPL-2')
conflicts=()
depends=('sdl_mixer' 'sdl_image' 'physfs' 'mesa' 'freeglut' 'freealut' 'trigger-data')
makedepends=('ftjam' 'glew')
source=(http://ufpr.dl.sourceforge.net/sourceforge/trigger-rally/$pkgname-$pkgver-src.tar.bz2)
md5sums=('2b1cf3741b210b0f156f6b15d33e4f0b')

build() {

    mkdir -p $pkgdir/opt/games/$pkgname 
    mkdir -p $pkgdir/usr/bin

    cd $srcdir/$pkgname-$pkgver-src/ 

    ./autogen.sh
    ./configure --prefix=$pkgdir/usr --datadir=/opt/games/trigger/$pkgname-0.5.2-data  
    jam -qa || return 1

    install -m775 trigger $pkgdir/usr/bin/trigger 
}

# vim:set ts=2 sw=2 et:
