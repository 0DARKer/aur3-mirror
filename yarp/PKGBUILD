# Contributor: Victor NoÃ«l

pkgname=yarp
pkgver=2.3.4
pkgrel=1
pkgdesc="Yet Another Robot Platform"
url="http://eris.liralab.it/yarp/"
license=('GPL')
arch=('i686' 'x86_64')
makedepends=('cmake')
depends=('ace' 'gtk2' 'gcc-libs')
options=(!libtool)
source=(http://downloads.sourceforge.net/yarp0/$pkgname-$pkgver.tar.gz)

build() {
  cd $srcdir

  rm -rf build-$pkgname-$pkgver
  mkdir build-$pkgname-$pkgver
  cd build-$pkgname-$pkgver

  cmake ../$pkgname-$pkgver -DCMAKE_INSTALL_PREFIX=/usr -DCREATE_GUIS=TRUE -DCREATE_SHARED_LIBRARY=TRUE
  make
}

package() {
  cd $srcdir/build-$pkgname-$pkgver

  make DESTDIR=$pkgdir install
}

md5sums=('00a2b21ab6e6469bfc99fedf00a74c0f')
