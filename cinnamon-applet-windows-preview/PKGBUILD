# Maintainer: Ner0

pkgname=cinnamon-applet-windows-preview
pkgver=1.0
pkgrel=1
pkgdesc="A window list with window preview applet"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/applets/view/27"
license=('GPL')
depends=('cinnamon')
install=$pkgname.install
source=('http://cinnamon-spices.linuxmint.com/uploads/applets/REH4-YRVB-HKUB.zip')
md5sums=('4a432eac07d8353a8655d643e3be6cc2')

package() {
  find windowPreviewWindowList\@dalcde -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/cinnamon/applets/{}" \;
}
