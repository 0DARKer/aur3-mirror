# Maintainer: nqn1976 @ gmail.com

pkgname=rootactions-servicemenu-kde4
pkgver=2.6.99
pkgrel=2
pkgdesc="Allows admin users to perform several root only actions from dolphin via kdesu/kdesudo"
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php?content=48411"
license=('GPL')
depends=('kdebase-dolphin' 'kdeutils-ark')
source=(http://www.kde-apps.org/CONTENT/content-files/48411-rootactions_servicemenu.tar.gz)
md5sums=('90a2abca2cc53c98604a00c382243bf3')


build() {
cd $startdir/src/rootactions_servicemenu/Root_Actions_$pkgver/dolphin-KDE4/
mkdir -p $startdir/pkg/usr/share/kde4/services/ServiceMenus/
install -m755 *.desktop $startdir/pkg/usr/share/kde4/services/ServiceMenus/
cd $startdir/src/rootactions_servicemenu/Root_Actions_$pkgver 
install -Dm755 rootactions-servicemenu.pl $startdir/pkg/usr/bin/rootactions-servicemenu.pl
} 
