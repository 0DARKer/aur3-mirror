# Contributer: giacomogiorgianni@gmail.com 

pkgname=vokoscreen
numver=201301021226
pkgver=1.4.1
pkgrel=2
pkgdesc="GUI ffmpeg based on Qt4 libriaries."
arch=('i686' 'x86_64')
url="http://qt-apps.org/content/show.php/HTTraQt?content=155711"
depends=('qt4' 'ffmpeg' 'pulseaudio' 'alsa-utils' 'lame' 'mkvtoolnix')
makedepends=('cmake' 'automoc4' 'gcc')
source=("http://ppa.launchpad.net/$pkgname-dev/$pkgname-daily/ubuntu/pool/main/v/$pkgname/${pkgname}_${pkgver}+bzr2-git$numver~precise1.tar.gz" $pkgname.install)
#options=('!strip')
license=('GPL2')
install=${pkgname}.install
md5sums=('f4d140fe4888460f4ce545901208f86a' '027efd4ee6f24da7af118f6f99ef5909')

build() {
  cd "${srcdir}/recipe-{debupstream}+bzr{revno}-git$numver"
  qmake4 $pkgname.pro -r -config release \
    "CONFIG+=LINUX_INTEGRATED" \
    "INSTALL_ROOT_PATH=$pkgdir/usr/" \
    "LOWERED_APPNAME=$pkgname"
 make
}

package() {
  cd "${srcdir}/recipe-{debupstream}+bzr{revno}-git$numver"
  make INSTALL_ROOT=${pkgdir} install
  #make DESTDIR="$pkgdir" install
}
