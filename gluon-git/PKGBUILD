# Contributor: Harley Laue <losinggeneration@gmail.com>

pkgname=gluon-git
pkgver=20101124
pkgrel=1
pkgdesc="A high-level game development library for the KDE desktop enviornment."
arch=('i686' 'x86_64')
url="http://gluon.gamingfreedom.org/"
license=('GPL')
depends=('glew' 'kdelibs' 'libsndfile' 'openal')
makedepends=('git' 'eigen' 'cmake' 'automoc4')
provides=('gluon')
conflicts=('gluon')
install=gluon.install

_gitroot="git://git.kde.org/gluon.git"
_gitname="gluon"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  [ -d "$srcdir/$_gitname-build" ] && rm -rf "$srcdir/$_gitname-build"
  mkdir "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake -DCMAKE_INSTALL_PREFIX=/usr "$srcdir/$_gitname"
  make || return 1
  make DESTDIR="$pkgdir/" install
}

