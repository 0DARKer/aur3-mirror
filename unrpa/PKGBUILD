# Maintainer: Linus Sj√∂gren <thelinx@unreliablepollution.net>
pkgname=unrpa
pkgver=1.1
pkgrel=1
pkgdesc="A script to extract files from archives created for the Ren'Py Visual Novel Engine."
arch=("any")
url="http://unrpa.lattyware.co.uk/"
license=('GPL')
depends=("python2")
builddepends=("sed")
options=(!strip !zipman)
source=(http://unrpa.lattyware.co.uk/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('1b077096973ad5039d3fe41d0362a34b')

build() {
  cd "$srcdir"
  sed -i -e "s/env python/env python2/" unrpa
}

package() {
  cd "$srcdir"
  mkdir -p $pkgdir/usr/bin/
  install -Dm0755 unrpa $pkgdir/usr/bin/unrpa
}

# vim:set ts=2 sw=2 et:
