# Contributor: Guten <ywzhaifei at gmail dot com>

pkgname=user-mpd-daemon
pkgver=0.3
pkgrel=2
pkgdesc="an mpd user daemon. READ https://github.com/GutenYe/user-daemon-system FIRST"
arch=("i686" "x86_64")
url="https://github.com/GutenYe"
license=("MIT-LICENSE")
depends=("user-daemon-system-git")
source=("rc.mpd")

package() {
  cd $srcdir

  install -Dm755 rc.mpd $pkgdir/home/$USER/etc/rc.d/mpd

  chown $USER:$USER -R $pkgdir/home/$USER
}

# vim:set ts=2 sw=2 et:
md5sums=('48063e0ab826a8aea7a4e73207e972b5')
