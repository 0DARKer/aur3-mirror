# Maintainer: Luca Bennati <lucak3 AT gmail DOT com>

pkgname=vim-fileline
pkgver=0.6
pkgrel=1
_scriptid=14875
pkgdesc="Opens file:line doing the right thing"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=2184"
license=('GPL3')
depends=('vim')
groups=('vim-plugins')
source=(fileline.vim::"http://www.vim.org/scripts/download_script.php?src_id=$_scriptid")
md5sums=('babc65870b4be82d6cf688aa0314830f')

build() {
  true
}

package() {
  cd "${srcdir}"
  local _installpath="${pkgdir}/usr/share/vim/vimfiles"
  install -Dm644 fileline.vim "${_installpath}/plugin/fileline.vim"
}
