# Contributor: Jordi Cerdan (jcerdan) <jcerdan@tecob.com>
pkgname=drpython
pkgver=3.11.0
pkgrel=2
pkgdesc="Python IDE built with wxWidgets"
url="http://drpython.sourceforge.net/"
license=('GPL')
depends=('wxpython')
arch=('i686' 'x86_64')
source=("http://downloads.sourceforge.net/sourceforge/drpython/$pkgname-$pkgver.zip" 'drpython.sh' 'drpython.desktop')
md5sums=('af7e18ebfd7788c6ccbb9758c983f0d5' '806be86e8977deb870bf0b5b4f558ec8' '171d08cdc4f3cc429c60d70a5e4e5e3e')

build() {
	mkdir -p $startdir/pkg/usr/share/$pkgname
	cp -r $startdir/src/drpython/* $startdir/pkg/usr/share/$pkgname/
	install -D -m755 $startdir/$pkgname.sh $startdir/pkg/usr/bin/$pkgname
	install -D -m644 $startdir/$pkgname.desktop $startdir/pkg/usr/share/applications/$pkgname.desktop
}
