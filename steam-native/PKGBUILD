# Maintainer: Kasper Menten <i@doomed.it>

pkgname=steam-native
pkgver=1.0
pkgrel=1
pkgdesc="Steam using native runtime + issue 1025 fix"
arch=('any')
url="https://wiki.archlinux.org/index.php/Steam"
license=('unknown')
source=('https://dl.dropboxusercontent.com/u/4776753/steam-native.sh')
md5sums=('475a3e87c07bf694a988871ef483ff43')
if [[ "$CARCH" == "x86_64" ]]; then
  depends+=(steam lib32-alsa-lib lib32-cairo lib32-libcups lib32-dbus-glib 
            lib32-fontconfig lib32-freetype2 lib32-gdk-pixbuf2 lib32-gtk2 
            lib32-libice lib32-networkmanager lib32-nspr lib32-nss lib32-pango 
            lib32-libpng12 lib32-libpulse lib32-libsm lib32-libusbx lib32-libxinerama 
            lib32-libxi lib32-libxrandr lib32-libxrender)
else
  depends=(steam alsa-lib cairo libcups dbus-glib fontconfig freetype2 
           gdk-pixbuf2 gtk2 libice networkmanager nspr nss pango libpng12 
           libpulse libsm libusbx libxinerama libxi libxrandr libxrender)
fi
conflicts=(steam-closetotray)

package()
{
	install -Dm 775 "$srcdir/$pkgname.sh" "$pkgdir/etc/profile.d/$pkgname.sh"
}
