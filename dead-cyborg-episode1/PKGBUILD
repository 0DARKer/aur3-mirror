pkgname=dead-cyborg-episode1
pkgver=1
pkgrel=1
pkgdesc='Free, donation based oldskool sci-fi adventure game with 3D first person view'
arch=('i686' 'x86_64')
url='http://deadcyborg.com/'
license=('freeware, closed source')
depends=('openal' 'sdl' 'ffmpeg' 'libpng' 'libtiff' 'libjpeg6' 'zlib' 'python')
install=
source=('http://deadcyborg.com/deadcyborg-episode1-linux.tar.bz2')
md5sums=('7aa4106fcd730f45884e70a41bf1105c')

package() {
	cd $srcdir
	install -d $pkgdir/opt/dead-cyborg-episode1
	cp --archive DeadCyborg-Episode1-Linux/* $pkgdir/opt/dead-cyborg-episode1
#	msg "Start the game with one of the start_game* scripts in the /opt/dead-cyborg-episode1 directory."
}
