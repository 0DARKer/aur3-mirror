# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be> 
# Contributor: AndyRTR <andyrtr@archlinux.org>

pkgname=garcon-devel
pkgver=0.1.4
pkgrel=1
pkgdesc="Implementation of the freedesktop.org menu specification (Development Version)"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('glib2>=2.14' 'perl')
makedepends=('pkgconfig' 'intltool' 'xfce4-dev-tools-devel')
conflicts=('garcon' 'garcon-git')
replaces=('libxfce4menu' 'garcon' 'garcon-git')
options=('!libtool')
source=(http://archive.xfce.org/src/libs/garcon/0.1/garcon-${pkgver}.tar.bz2)
md5sums=('eac5e31fb1ee9fa1b2ec7d6613a0674d')

build() {
	cd ${srcdir}/garcon-${pkgver}
	./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib \
		--localstatedir=/var --disable-static
	make
}

package() {
	cd ${srcdir}/garcon-${pkgver}
	make DESTDIR=${pkgdir} install
}

