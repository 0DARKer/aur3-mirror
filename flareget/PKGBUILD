 
# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=flareget
pkgver=1.3
pkgrel=5
pkgdesc="A full featured, advanced, multi-threaded, multisegment download manager and accelerator."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/flareget/"
license=('CC BY-NC 3.0')
depends=('qt4>=4.8.1')
source=('http://software-files-a.cnet.com/s/software/12/95/52/90/flareget_1.3-5(stable)_deb_rpm.tar.gz')
md5sums=('aa78440b465013e0a22788d9bd32d14d')

package() {
   cd $srcdir/${pkgname}_${pkgver}*/debs

   if [ "${CARCH}" = "x86_64" ]; then 
       _ar=amd64
   else
       _ar=i386
   fi
   
   # Extract .deb package
   bsdtar xf ${pkgname}_${pkgver}-${pkgrel}_${_ar}.deb
   bsdtar xf data.tar.gz -C $pkgdir

   # License
   install -Dm644 $pkgdir/usr/share/doc/$pkgname/copyright $pkgdir/usr/share/licenses/$pkgname/LICENSE

   rm -rf $pkgdir/usr/share/doc
}