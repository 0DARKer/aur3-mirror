# Maintainer: Marc Rozanc <marc@rozanc.fr>

pkgname=flareget
_rel=1.5
_subrel=12
pkgver=${_rel}.${_subrel}
pkgrel=1
pkgdesc="A full featured, advanced, multi-threaded, multisegment download manager and accelerator."
arch=('i686' 'x86_64')
url="http://flareget.com"
license=('custom')
depends=('glibc>=2.13' 'qt4>=4.8.1' 'libpcap>=0.9.8')
makedepends=('rpmextract')
install=${pkgname}.install

if  [ "${CARCH}" = "i686" ]; then
    source=("${pkgname}-${_rel}-${_subrel}.${CARCH}.rpm::http://www.flareget.com/files/flareget/rpm/i386/rpm.php")
    md5sums=('f0a1f9ed5dad101213cd523fc981c8dd')
elif [ "${CARCH}" = "x86_64" ]; then
    source=("${pkgname}-${_rel}-${_subrel}.${CARCH}.rpm::http://www.flareget.com/files/flareget/rpm/amd64/rpm.php")
    md5sums=('30e342cc06122e1df4d2f7500ef88aef')
fi

package() {
   cd $pkgdir

   # Extract .rpm package
   rpmextract.sh $srcdir/${pkgname}-${_rel}-${_subrel}.${CARCH}.rpm

   cd $srcdir
   # License
   install -Dm644 $pkgdir/usr/share/doc/$pkgname/COPYING $pkgdir/usr/share/licenses/$pkgname/LICENSE

   rm $pkgdir/usr/share/doc/$pkgname/COPYING
}

