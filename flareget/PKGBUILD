# Maintainer: Marc Rozanc <marc@rozanc.fr>

pkgname=flareget
_rel=1.5
_subrel=12
pkgver=${_rel}.${_subrel}
pkgrel=2
pkgdesc="A full featured, advanced, multi-threaded, multisegment download manager and accelerator."
arch=('i686' 'x86_64')
url="http://flareget.com"
license=('custom')
depends=('glibc>=2.13' 'qt4>=4.8.1' 'libpcap>=0.9.8')
makedepends=('rpmextract')
install=${pkgname}.install

if  [ "${CARCH}" = "i686" ]; then
    _arch1="i386"
    _arch2=$_arch1
    md5sums=('a44375033c12bb9b40f25011f4b7cf00')
elif [ "${CARCH}" = "x86_64" ]; then
    _arch1="x86_64"
    _arch2="amd64"
    md5sums=('3459ef3ee4cc5a8c0fe228b17c450795')
fi

source=("http://www.flareget.com/files/flareget/rpm/${_arch2}/flareget_${_rel}-${_subrel}_${_arch1}(stable)_rpm.tar.gz")

package() {
   cd $pkgdir

   # Extract .rpm package
   rpmextract.sh "$srcdir/flareget_${_rel}-${_subrel}_${_arch1}(stable)_rpm/${pkgname}-${_rel}-${_subrel}.${_arch1}.rpm"

   cd $srcdir
   # License
   install -Dm644 $pkgdir/usr/share/doc/$pkgname/COPYING $pkgdir/usr/share/licenses/$pkgname/LICENSE

   rm $pkgdir/usr/share/doc/$pkgname/COPYING
}

