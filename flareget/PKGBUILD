
# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=flareget
pkgver=1.4
subrel=7
pkgrel=1
pkgdesc="A full featured, advanced, multi-threaded, multisegment download manager and accelerator."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/flareget/"
license=('CC BY-NC 3.0')
depends=('qt4>=4.8.1')

if [ "${CARCH}" = "x86_64" ]; then 
       source=(http://www.flareget.com/files/flareget/debs/amd64/${pkgname}_${pkgver}-${subrel}_amd64.deb)
       md5sums=('2310bfe3f9e19a0fcd13d8723dee8243')
elif  [ "${CARCH}" = 'i686' ]; then
       source=(http://www.flareget.com/files/flareget/debs/i386/${pkgname}_${pkgver}-${subrel}_i386.deb)
       md5sums=('2d6a1dc1103b1f90aa9db4808ee22d3d')
fi
   
package() {
   cd $srcdir

   # Extract .deb package
   bsdtar xf data.tar.gz -C $pkgdir

   # License
   install -Dm644 $pkgdir/usr/share/doc/$pkgname/copyright $pkgdir/usr/share/licenses/$pkgname/LICENSE

   rm $pkgdir/usr/share/doc/$pkgname/c*
}