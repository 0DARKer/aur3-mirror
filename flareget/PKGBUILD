# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=flareget
pkgver=0.1
pkgrel=1
pkgdesc="An advanced multi-threaded and multisegment download manager."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/flareget/"
license=('CC BY-NC 3.0')
depends=('qt')
source=('http://sourceforge.net/projects/flareget/files/Linux/flareGet_0.1-0(alpha)_deb_rpm.tar.gz')
md5sums=('66a5cd0c3ddfe2db4ce921e12c523155')

package() {
   cd $srcdir/flareGet_$pkgver*/debs

   if [ "${CARCH}" = "x86_64" ]; then 
       _ar=amd64
   else
       _ar=i386
   fi 

   # Extract .deb package
   bsdtar xf flareGet_0.1-0_$_ar.deb
   bsdtar xf data.tar.gz -C $pkgdir

   # License
   install -Dm644 $pkgdir/usr/share/doc/flareGet/copyright $pkgdir/usr/share/licenses/$pkgname/LICENSE

   rm -rf $pkgdir/usr/share/{doc,menu}
}