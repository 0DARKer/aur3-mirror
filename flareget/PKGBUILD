
# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=flareget
_rel=1.4
_subrel=7
pkgver=${_rel}.${_subrel}
pkgrel=2
pkgdesc="A full featured, advanced, multi-threaded, multisegment download manager and accelerator."
arch=('i686' 'x86_64')
url="http://flareget.com"
license=('CCPL:by-nc-sa')
depends=('qt4>=4.8.1')
install=$pkgname.install

if [ "${CARCH}" = "x86_64" ]; then 
       source=(http://www.flareget.com/files/flareget/debs/amd64/${pkgname}_${_rel}-${_subrel}_amd64.deb $pkgname.install)
       md5sums=('2310bfe3f9e19a0fcd13d8723dee8243' '9554d9130a4a90235bcd535f5ffbc8a1')
elif  [ "${CARCH}" = 'i686' ]; then
       source=(http://www.flareget.com/files/flareget/debs/i386/${pkgname}_${_rel}-${_subrel}_i386.deb $pkgname.install)
       md5sums=('2d6a1dc1103b1f90aa9db4808ee22d3d' '9554d9130a4a90235bcd535f5ffbc8a1')
fi
   
package() {
   cd $srcdir

   # Extract .deb package
   bsdtar xf data.tar.gz -C $pkgdir

   # License
   install -Dm644 $pkgdir/usr/share/doc/$pkgname/copyright $pkgdir/usr/share/licenses/$pkgname/LICENSE

   rm $pkgdir/usr/share/doc/$pkgname/c*
}