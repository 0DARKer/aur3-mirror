# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=gtksourceview3-git
pkgver=20130129
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME - git version"
arch=('i686' 'x86_64')
url="http://projects.gnome.org/gtksourceview/development.html"
license=('GPL')
depends=('gtk3')
makedepends=('git' 'intltool' 'gobject-introspection' 'glade' 'gnome-common' 'gtk-doc')
provides=('gtksourceview3')
conflicts=('gtksourceview3')
options=('!libtool')
source=('gnome-autogen.sh')
md5sums=('4923cb46e02043ec7bb6c7327e2dae03')

_gitroot="git://git.gnome.org/gtksourceview"
_gitname="gtksourceview3"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server..."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  [ -d "$srcdir/$_gitname-build" ] && rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  cp $startdir/gnome-autogen.sh "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  ./gnome-autogen.sh  --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --disable-static --enable-glade-catalog
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}
