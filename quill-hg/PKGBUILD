# Maintainer: xiannox <xian.nox@gmail.com>

pkgname=quill-hg
_pkgname=quill
pkgver=tip
pkgrel=1
pkgdesc="A lightweight web browser"
arch=("i686" "x86_64")
url="https://bitbucket.org/celestriad/quill"
license=('GPL')
depends=('qt5-base' 'qt5-tools' 'qt5-webkit')
source=('hg+https://bitbucket.org/celestriad/quill')
install=quill.install
md5sums=('SKIP')

build() {
  cd "$srcdir/$_pkgname"

  #lrelease-qt5 resources/translations/*.ts
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make INSTALL_ROOT="${pkgdir}" install
}
