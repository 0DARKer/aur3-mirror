# Maintainer Alex Ghoust <ghoust@skyper.homelinux.org>

pkgname=instead-cat
pkgver=1.2
pkgrel=2
pkgdesc="Quest for instead. Return of the quantum cat"
arch=('any')
url="http://instead-games.googlecode.com/"
license=('custom')
depends=('instead')
source=(http://instead-games.googlecode.com/files/$pkgname-$pkgver.zip)
md5sums=('e355122604d13c35fba84a9ac9118f56')

build() {
  cd "${srcdir}"
  mkdir -p $pkgdir/usr/share/instead/games/cat/{gfx,mus}
  install -m644 cat/gfx/* $pkgdir/usr/share/instead/games/cat/gfx || return 1 
  install -m644 cat/mus/* $pkgdir/usr/share/instead/games/cat/mus || return 1
  install -m644 cat/{main.lua,ep1.lua,ep2.lua,ep3.lua} $pkgdir/usr/share/instead/games/cat/ || return 1
}

