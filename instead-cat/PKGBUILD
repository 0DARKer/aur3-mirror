# Maintainer: AlexanderR <rvacheva at nxt dot ru>
# Contributor Alex Ghoust <ghoust@skyper.homelinux.org>

pkgname=instead-cat
pkgver=1.6
pkgrel=1
pkgdesc="Return of the quantum cat is a quest for INSTEAD text games engine. This is the story about woodsman in the past, hacker-downshifter, his fight against evil and quantum paradoxes."
arch=('any')
url='http://instead.syscall.ru/wiki/en/games/returning-the-quantum-cat'
license=('GPL' 'CCPL:by')
depends=('instead')
# there are no binaries and manpages
options=(!strip !zipman)

source=("https://instead-games.googlecode.com/files/${pkgname}-${pkgver}.zip")

build() {
  cd "$srcdir/cat"
  mkdir -p $pkgdir/usr/share/instead/games/cat/{gfx,mus}
  # resources
  install -m644 gfx/* $pkgdir/usr/share/instead/games/cat/gfx
  install -m644 mus/* $pkgdir/usr/share/instead/games/cat/mus
  # scripts
  install -m644 *.lua $pkgdir/usr/share/instead/games/cat/
  # language icons
  install -m644 *.png $pkgdir/usr/share/instead/games/cat/
}

sha1sums=('53e0e53cd92b66cabfb501433715d476706a3cd9')
