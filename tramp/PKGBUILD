# Maintainer:	Fabio Pozzi <fabio.pozzi at anche dot no >
# Contributor:	Nathan Owe <ndowens04 at gmail>

pkgname=tramp
pkgver=2.2.0
pkgrel=1
pkgdesc="Transparent Remote (file) Access, Multiple Protocol. It provides remote file editing"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/tramp/"
license=('GPL')
install=tramp.install
makedepends=('emacs')
source=(ftp://ftp.gnu.org/gnu/tramp/$pkgname-$pkgver.tar.gz)
md5sums=('c616fb6c230860480d258f7c17e438f1') 

build() {
  cd $startdir/src/tramp-$pkgver

  ./configure --prefix=/usr
  make || return 1

  make DESTDIR=$pkgdir/ install

 
}

