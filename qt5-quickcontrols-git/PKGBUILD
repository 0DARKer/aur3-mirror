# Maintainer: spider-mario <spidermario@free.fr>
# Contributor: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>
pkgname=qt5-quickcontrols-git
pkgver=5.1.1.22.g5520918
pkgrel=1
pkgdesc="A cross-platform application and UI framework (QtQuick Controls)"
groups=('qt' 'qt5')
arch=('i686' 'x86_64')
url="http://qt-project.org/"
license=('GPL3' 'LGPL')
depends=('qt5-declarative')
provides=('qt5-quickcontrols')
replaces=('qt5-qtquickcontrols-git')
conflicts=('qt5-quickcontrols' 'qt5-qtquickcontrols-git')
makedepends=('gcc' 'git')
source=(git+http://git.gitorious.org/qt/qtquickcontrols.git)
sha512sums=(SKIP)

pkgver() {
	cd qtquickcontrols
	git describe | sed -e 's/^v//' | tr - .
}

build() {
	cd qtquickcontrols
	qmake
	make
}

package() {
	cd qtquickcontrols
	make INSTALL_ROOT="$pkgdir" install
}
