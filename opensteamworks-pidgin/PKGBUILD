# Contributor: onny <onny@project-insanity.org>

pkgname=opensteamworks-pidgin
pkgver=1.0
pkgrel=1
pkgdesc="A plugin to connect to Steam Friends/Steam IM (purple plugin). "
url=('https://code.google.com/p/pidgin-opensteamworks')
arch=('i686')
license=('GPL3')
makedepends=('json-glib')
source=("https://pidgin-opensteamworks.googlecode.com/files/libsteam.so")
md5sums=('67e303f8bbbfc0a8b6697123c0ed2f3a')
package() {
  	mkdir -p $pkgdir/usr/lib/purple-2
  	install -D -m755 $srcdir/libsteam.so $pkgdir/usr/lib/purple-2/
}
