# Maintainer: Christoph Drexler <chrdr at gmx dot at>

pkgname=grisbi
pkgver=0.6.0
pkgrel=2
pkgdesc="Personal financial management program"
arch=('i686' 'x86_64')
url="http://www.grisbi.org"
license=('GPL')
depends=('gtk2' 'hicolor-icon-theme')
optdepends=('libofx: for OFX support')
options=(!libtool)
install=(grisbi.install)
source=(http://downloads.sourceforge.net/grisbi/grisbi-${pkgver}.tar.bz2
grisbi.install)
md5sums=('19062be7f4f6ec29adda4ec09f0d626f'
         '6ea8cd7c52075592878179fbc966f59f')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
