# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Manuel Mendez <mmendez534@gmail.com>
pkgname=flowgrind
pkgver=0.5.9
pkgrel=1
pkgdesc="TCP Performance Measurement"
arch=("i686" "x86_64")
url="https://launchpad.net/flowgrind"
license=('GPLv2')
depends=(libpcap gsl xmlrpc-c)
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://launchpad.net/$pkgname/trunk/$pkgname-$pkgver/+download/$pkgname-$pkgver.tar.bz2)
noextract=()
sha1sums=('b877bddbf30e0aa43eeca59a3a93656cf0abfd8a')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
