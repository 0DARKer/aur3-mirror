# Maintainer: Gen2ly <toddrpartridge@gmail.com>
# Thanks to: aya https://bbs.archlinux.org/viewtopic.php?pid=1225244#p1225244

pkgname=ocztoolbox
_pkgname=ocztoolbox
pkgver=4.5.0.227
pkgrel=1
pkgdesc="OCZtoolbox it utility for firmware upgrade of OCZ drive and see he smart parametrs NOTE: Drives must be in AHCI mode for full functionality."
arch=('any')
url="http://ocz.com/consumer/download/firmware"
license=('Proprietary')
depends=('')
install=ocztoolbox.install
md5sums=('8fd423b7def8ae7908c435df2893025b')

package() {
  var=$RANDOM
  mkdir -p /tmp/$var/ && cd /tmp/$var/
  curl http://ocz.com/consumer/download/firmware/OCZToolbox_v4.5.0.227_linux.tar.gz > ./1.tar.gz
  tar -zxvf 1.tar.gz
  install -Dm755 ./OCZToolbox_v4.5.0.227_linux/linux32/OCZToolbox $pkgdir/usr/bin/ocztoolbox
}
# vim:set ts=2 sw=2 et: