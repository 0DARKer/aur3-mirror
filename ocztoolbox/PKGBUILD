# Maintainer: ajs124 < ajs ÄT online DÖT de >

pkgname=ocztoolbox
pkgver=4.7.1.350
pkgrel=1
pkgdesc="OCZtoolbox it utility for firmware upgrade of OCZ drive and see he smart parametrs NOTE: Drives must be in AHCI mode for full functionality."
arch=('i686' 'x86_64')
url="http://ocz.com/consumer/download/firmware"
license=('proprietary')
depends=(libsm libxrender fontconfig libxext)
source=(http://ocz.com/consumer/download/firmware/OCZToolbox_v${pkgver}_linux.tar.gz)
md5sums=('b632cc4e9c60ae0cbd6ebc4d63cf82f8')

package() {
  [[ $CARCH == x86_64 ]] && _arch=64
  [[ $CARD == i686 ]] && _arch=32
  install -Dm755 OCZToolbox_v${pkgver}_linux/linux${_arch}/OCZToolbox "${pkgdir}/usr/bin/ocztoolbox"
}
