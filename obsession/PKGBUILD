# maintainer: mimas <mimasgpc@free.fr>

pkgname=obsession
pkgver=20130101
pkgrel=1
pkgdesc="Openbox session tools"
arch=('i686' 'x86_64')
url=http://code.google.com/p/mimarchlinux/
license=('GPL')
depends=('glib2' 'gtk2' 'dbus' 'systemd')
optdepends=('xlock' 'lxdm' 'gdm')
source=(http://mimarchlinux.googlecode.com/files/obsession-$pkgver.tar.bz2)
md5sums=('bba0f6ccb88ebd93aeba51446d92352e')

build() {
  cd $srcdir/$pkgname-$pkgver
  make configure PREFIX=/usr/
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make install PREFIX=$pkgdir/usr
}

