pkgname=thailatex
pkgver=0.4.4
pkgrel=1
pkgdesc="ThaiLaTeX is a package which enables typesetting Thai language with LaTeX's standard document classes"
arch=(i686 x86_64)
license=('LPPL')
depends=('texlive-core' 'swath' 'sh')
makedepends=('texlive-bin' 'ghostscript')
groups=('texlive-lang')
install=$pkgname.install
url="http://linux.thai.net/projects/thailatex"
source=(ftp://linux.thai.net/pub/ThaiLinux/software/thailatex/$pkgname-$pkgver.tar.gz)
md5sums=('6e2a0de0c2e7592b1d4e94c22c6509de')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --with-texmfdir=/usr/share/texmf-dist || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

