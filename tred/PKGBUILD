# Contributor: Ondrej Kucera <ondrej.kucera@centrum.cz>

pkgname=tred
pkgver=1.4496
pkgrel=2
pkgdesc="Tree editor TrEd"
arch=("any")
url="http://ufal.mff.cuni.cz/~pajas/tred/"
license=("GPL")
depends=('perl' 'perl-tk' 'perl-file-which' 'perl-tie-ixhash' 'perl-tk-codetext' 'perl-xml-libxslt' 'perl-xml-libxml-iterator' 'perl-xml-sax-writer' 'perl-xml-writer' 'perl-uri' 'perl-libwww' 'perl-io-string' 'perl-universal-does' 'perl-treex-pml')
source=(http://ufal.mff.cuni.cz/~pajas/tred/$pkgname-$pkgver.tar.gz)
md5sums=('60c2f6fbac370f34fdfce0716a1913c8')

build() {
  mkdir -p ${pkgdir}/opt
  cp -r ${srcdir}/${pkgname} ${pkgdir}/opt
  mkdir -p ${pkgdir}/usr/bin
  cd ${pkgdir}/usr/bin
  ln -s ../../opt/tred/tred tred
  ln -s ../../opt/tred/btred btred
  ln -s ../../opt/tred/ntred ntred
}
