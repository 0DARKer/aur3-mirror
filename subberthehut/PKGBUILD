pkgname=subberthehut
pkgver=3
pkgrel=1
pkgdesc='A command-line based OpenSubtitles.org downloader'
arch=('i686' 'x86_64')
url='https://github.com/65kid/subberthehut'
license=('BSD')
depends=('xmlrpc-c' 'glib2' 'zlib')
source=("https://github.com/65kid/$pkgname/archive/$pkgver.tar.gz")
md5sums=('0c9d3a0804f95c183ca706314e2ebe85')

build() {
	make -C "$pkgname-$pkgver"
}

package() {
	make -C "$pkgname-$pkgver" DESTDIR="$pkgdir" install
}
