# Maintainer: Felix Kaiser <felix.kaiser@fxkr.net>

pkgname=python-wtforms
pkgver=0.6.2
pkgrel=1
pkgdesc="WTForms is a forms validation and rendering library for python web development."
arch=('i686' 'x86_64')
url="http://wtforms.simplecodes.com/"
license=('BSD')
depends=('python2')
makedepends=('setuptools')
source=(http://pypi.python.org/packages/source/W/WTForms/WTForms-0.6.2.zip)
md5sums=(3e11cf021f81df201ea94f7da09a2ba6)

build() {
  cd WTForms-$pkgver
  python2 ./setup.py install --root=$pkgdir --prefix=/usr || return 1
  chmod -R a+r $pkgdir
}

