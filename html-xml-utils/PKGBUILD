# Maintainer: Patrick Burroughs (Celti) <celticmadman@gmail.com>

pkgname=html-xml-utils
pkgver=6.7
pkgrel=1
pkgdesc="A number of simple utilities for manipulating HTML and XML files."
arch=(i686 x86_64)
url="http://www.w3.org/Tools/HTML-XML-utils/"
license=('custom')
source=("http://www.w3.org/Tools/HTML-XML-utils/$pkgname-$pkgver.tar.gz")
sha256sums=('92af4886fcada0e2fc35308def4d02baedd9889d2e4c957b07b77a60fbdacd99')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
