# Maintainer: Patrick Burroughs (Celti) <celticmadman@gmail.com>

pkgname=html-xml-utils
pkgver=6.8
pkgrel=1
pkgdesc="A number of simple utilities for manipulating HTML and XML files."
arch=(i686 x86_64)
url="http://www.w3.org/Tools/HTML-XML-utils/"
license=('custom')
source=("http://www.w3.org/Tools/HTML-XML-utils/$pkgname-$pkgver.tar.gz")
sha256sums=('f09b7de5e427ea930ed9ceaf0ee7e6a816cf51113149a040fa84a1664ddfa189')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
