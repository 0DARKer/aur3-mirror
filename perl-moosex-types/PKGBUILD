# Generator  : CPANPLUS::Dist::Arch 1.04
pkgname='perl-moosex-types'
pkgver='0.23'
pkgrel='1'
pkgdesc="Organise your Moose types in libraries"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-carp-clan>=6.00' 'perl-moose' 'perl-namespace-clean>=0.08' 'perl-sub-install>=0.924' 'perl-sub-name' 'perl-test-exception')
url='http://search.cpan.org/dist/MooseX-Types'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/MooseX-Types-0.23.tar.gz')
md5sums=('a605e92095c056a94fab7c1c1b35b7f5')

build() {
  DIST_DIR="${srcdir}/MooseX-Types-0.23"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1 \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"

  { cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
