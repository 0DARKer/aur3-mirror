# Contributor: Anton Bazhenov <anton.bazhenov at gmail>
# Contributor: nuovodna <nuovodna_at_gmail.com>

pkgname=libindicator-bzr
_bzrname=libindicator
pkgver=527
pkgrel=1
pkgdesc="A set of symbols and convience functions that all indicators would like to use. (Canonical Ayatana Project) - Bzr version"
arch=('i686' 'x86_64')
url="http://launchpad.net/$_pkgsrc/"
makedepends=('bzr')
depends=('gnome-common' 'ido-bzr')
provides=('libindicator' 'libindicator3' 'libindicator-gtk3')
conflicts=('libindicator' 'libindicator3' 'libindicator-gtk3')
license=('GPL')
source=("$_bzrname::bzr+http://bazaar.launchpad.net/~indicator-applet-developers/$_bzrname/trunk.14.04/")
md5sums=('SKIP')

pkgver() {
  cd $_bzrname
  bzr revno
}

build() {
  cd "$srcdir"/$_bzrname
  ./autogen.sh --prefix=/usr --disable-static
  make
}

package() {
  cd "$srcdir"/$_bzrname
  make DESTDIR="$pkgdir" install
}
