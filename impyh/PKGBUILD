# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: DaeS
pkgname=impyh
pkgver=0.1
pkgrel=1
epoch=
pkgdesc="a GUI for scrot written in python"
arch=('i686' 'x86_64')
url="http://ompldr.org/vZDhiNA/impyh-0.1.tar.gz"
license=('GPL')
groups=()
depends=('python' 'python-gobject' 'scrot')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=.INSTALL
changelog=
source=(http://ompldr.org/vZDhiNA/impyh-0.1.tar.gz)
noextract=()
md5sums=('e0f97ccb8077acbdcbac004ad5fdee89')

build() {
  cd "$srcdir/$pkgname-$pkgver"
}

package() {
  cp -Rf "${srcdir}/${pkgname}-${pkgver}"/* "${pkgdir}/"
  chmod 775 ${pkgdir}/usr/share/impyh/ -R
  chmod a+x ${pkgdir}/usr/bin/impyh
}

