# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: DaeS
pkgname=impyh
pkgver=0.1
pkgrel=1
epoch=
pkgdesc="a GUI for scrot written in python"
arch=('i686' 'x86_64')
url="https://github.com/daesdp/Impyh"
license=('GPL')
groups=()
depends=('python' 'python-gobject' 'scrot')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=.INSTALL
changelog=
source=(http://ompldr.org/vZDh6OA/impyh-0.1.tar.gz)
noextract=()
md5sums=('16a44dcfcfe0c3ed1aee4a7f54775a1d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
}

package() {
  cp -Rf "${srcdir}/${pkgname}-${pkgver}"/* "${pkgdir}/"
  chmod 775 ${pkgdir}/usr/share/impyh/ -R
  chmod a+x ${pkgdir}/usr/bin/impyh
}

