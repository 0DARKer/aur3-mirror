# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: DaeS
pkgname=impyh
pkgver=0.1
pkgrel=1
epoch=
pkgdesc="Impyh es un comodo capurador de pantallas escrito en python"
arch=('i686' 'x86_64')
url="http://ompldr.org/vZDd0eQ/impyh-0.1.tar.gz"
license=('GPL')
groups=()
depends=('python' 'python-gobject' 'scrot')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=.INSTALL
changelog=
source=(http://ompldr.org/vZDd0eQ/impyh-0.1.tar.gz)
noextract=()
md5sums=('bc8626db23cd78188c7bf7952c3db551')

build() {
  cd "$srcdir/$pkgname"
}

package() {
  cp -Rf ${srcdir}/impyh /usr/share
  echo "#!/bin/bash" > /usr/bin/impyh
  echo "cd /usr/share/impyh && python impyh.py" >> /usr/bin/impyh
  chmod 777 /usr/share/impyh/ -R
  chmod a+x /usr/bin/impyh
}

