# Maintainer: Phil Miller <amnon@paldo.org>

pkgname=mixxx-beta
pkgver=1.7.0beta2
pkgrel=1
_pkgnewname=mixxx-1.7.0~beta2
pkgdesc="Digital DJ mixing software"
arch=('i686' 'x86_64')
url="http://www.mixxx.org/"
license=('GPL2')
depends=('qt' 'libsndfile' 'libogg' 'libid3tag' 'libmad' 'libvorbis' 'portaudio' 'qt>=4.5.0')
makedepends=('scons>=1.2.0' 'pkgconfig>=0.15.0')
optdepends=('pulseaudio')
#optdepends=('ffmpeg' 'libdjconsole')
#source=("http://mixxx.org/download/$pkgname-$pkgver/$pkgname_$pkgver.orig.tar.gz")
source=("http://downloads.mixxx.org/mixxx-1.7.0-beta2/mixxx-1.7.0-beta2-src.tar.gz"
  mixxx)
md5sums=('2dd2a344868476c502eeb57e798ec75a'
         'e1905c60d6f4d693575ff87e8cc2c3c0')

build() {
   cd "$srcdir/$_pkgnewname"
   scons qtdir=/usr/lib/qt prefix=/usr install_root=$startdir/pkg/usr || return 1
   scons qtdir=/usr/lib/qt prefix=/usr install_root=$startdir/pkg/usr install || return 1

   #adjusting files
   mv $startdir/pkg/usr/bin/mixxx $startdir/pkg/usr/bin/mixxx-bin
   install -m755 -D $startdir/mixxx $startdir/pkg/usr/bin/mixxx
   sed -i -e 's/^Exec="pasuspender mixxx"*/Exec="mixxx"/' $startdir/pkg/usr/share/applications/mixxx.desktop

}
