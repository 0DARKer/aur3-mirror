# Contributor: Calimero <calimeroteknik@free.fr>
pkgname=defora-libdesktop
pkgver=0.1.0
pkgrel=1
pkgdesc='The common lib to all Defora desktop apps'
arch=('i686' 'x86_64')
url='http://defora.org/os'
license=('GPL3')
depends=('defora-libsystem')
source=("http://www.defora.org/os/download/download/4318/libDesktop-${pkgver}.tar.gz")
md5sums=('3759a35fd47297c1177b586e5e350b71')

build() {
  cd "$srcdir/libDesktop-$pkgver"
  make PREFIX="/usr"
}

package() {
  cd "$srcdir/libDesktop-$pkgver"
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
