# Contributor: Martin Pieuchot <mpieuchot () nolizard ! org>

pkgname=firefox-spell-en_us
pkgver=3.0.3
pkgrel=1
pkgdesc="American English languague dictionary (spellcheker) for Firefox 3"
arch=('i686' 'x86_64')
license=('GPL')
depends=("firefox>=$pkgver")
makedepends=('unzip')
url="http://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/"
source=(ftp://ftp.services.openoffice.org/pub/OpenOffice.org/contrib/dictionaries/en_US.zip)
md5sums=('cb1e21fee281f32d832a34ad6de1b553')

build() {
  cd ${startdir}/src

  install -D -m 644 en_US.aff ${pkgdir}/usr/share/myspell/en_US.aff || return 1
  install -D -m 644 en_US.dic ${pkgdir}/usr/share/myspell/en_US.dic || return 1
}
