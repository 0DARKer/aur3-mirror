# Contributor: Carl Mueller  archlinux at carlm e4ward com

pkgname=kcheckgmail
pkgver=0.6.0
pkgrel=2
pkgdesc="System tray application for checking a Gmail account for new messages"
arch=('i686' 'x86_64')
url="http://kcheckgmail.sourceforge.net/"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('cmake' 'make' 'automoc4' 'gettext')
options=('!emptydirs' '!libtool')
source=(http://downloads.sourceforge.net/sourceforge/kcheckgmail/kcheckgmail-$pkgver.tar.bz2)
md5sums=('12d375119d7048d6649532b0b0cae32b')

build() {
  cd "$srcdir/kcheckgmail-$pkgver"
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` || return 1
  make || return 1
  make DESTDIR="$pkgdir" install
}
