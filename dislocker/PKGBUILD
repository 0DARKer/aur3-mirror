# Maintainer: mrxx <mrxx at cyberhome dot at>

pkgname=dislocker
pkgver=0.3
pkgrel=1
pkgdesc="Read BitLocker encrypted volumes under Linux"
arch=('i686' 'x86_64')
url="http://www.hsc.fr/ressources/outils/dislocker"
license=('GPL2')
depends=('fuse')
source=(https://github.com/Aorimn/dislocker/archive/v$pkgver.tar.gz)
md5sums=('d03d499bb391f5ae679786dca812494a')

build() {
  cd "$pkgname-$pkgver/src"
  make fuse
}

package() {
  cd "$pkgname-$pkgver/src"
  mkdir -p "$pkgdir/usr/bin" "$pkgdir/usr/share/man/man1"
  make INSTALL_PATH="$pkgdir/usr/bin/" MAN_PATH="$pkgdir/usr/share/man/man1" install
}
