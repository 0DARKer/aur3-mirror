pkgname=junit-devel
pkgver=4.8.2
pkgrel=1
pkgdesc="Java unit testing framework"
arch=('i686' 'x86_64')
url="http://junit.org"
license=('CPL')
depends=('java-runtime' 'hamcrest')
provides=('junit')
conflicts=('junit')
noextract=('*.jar')
source=(http://cloud.github.com/downloads/KentBeck/${provides}/${provides}-dep-${pkgver//_/-}.jar)

build() {
    cd $srcdir
	install -D -m644 ${provides}-dep-${pkgver//_/-}.jar $pkgdir/usr/share/java/${provides}.jar
}
md5sums=('6a8e30224331802bd3de0eb224ae50a2')
sha256sums=('e10a272da8bd09a6cc1019b5ce34f553c585d3f2879455f1b591ab0ca6bf6fa2')
