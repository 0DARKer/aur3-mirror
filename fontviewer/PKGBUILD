pkgname=fontviewer
pkgver=0.5.1
pkgrel=1
pkgdesc="Font Viewer written in TCL"
arch=('any')
url="http://siyb.mount.at/scripts/"
license=('BSD')
depends=('tcl' 'tk')
source=("http://siyb.mount.at/scripts/${pkgname}${pkgver}.tcl")
md5sums=('a28411da0946d43d86b9c3998f08c2ae')

build() {
  install -D -m755 $pkgname$pkgver.tcl $pkgdir/usr/bin/$pkgname
}
