pkgname=binkd
pkgver=0.9.4
pkgrel=1
pkgdesc="Binkd is a TCP/IP daemon, written by Dima Maloff and others to transfer files between two Fidonet systems"
arch=(i686 x86_64)
url="http://2f.ru/binkd/"
license=('GPL')
depends=('')
source=(http://2f.ru/binkd/binkd094.zip)
md5sums=('9330297ed00655da41a49784ab1a6d16')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cp mkfls/unix/* .
  chmod +x configure
  ./configure --prefix=${pkgdir}/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
