# Contributor: Gour <gour@mail.inet.hr>

pkgname=aspell-hr
pkgver=0.51
pkgrel=1
pkgdesc="Croatian dictionary for aspell"
arch=('i686' 'x86_64')
depends=('aspell')
url="http://aspell.net/"
license=('LGPL')
source=(ftp://ftp.gnu.org/gnu/aspell/dict/hr/$pkgname-$pkgver-0.tar.bz2)
md5sums=('7d2fb9af47266884c731691123a95a8d')

build() {
  cd $startdir/src/$pkgname-$pkgver-0
  ./configure
  /usr/bin/make || return 1
  /usr/bin/make DESTDIR=$startdir/pkg install
}

