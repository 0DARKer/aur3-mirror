# Contributor: Pierre Chapuis <catwell@archlinux.us>

pkgname=pymt-svn
pkgver=801
pkgrel=1
pkgdesc="Multitouch framework from the NUI Group"
arch=('i686' 'x86_64')
url="http://code.google.com/p/pytuio/" 
license=('GPL')
makedepends=('svn')
depends=('pyglet' 'python-numpy')
optdepends=('csound5' 'avbin32')
source=()
md5sums=()

_svnmod="pymt"
_svntrunk=http://pymt.googlecode.com/svn/trunk

build() {

  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    cd $_svnmod
    svn up -r $pkgver
  else
    svn co $_svntrunk --config-dir . -r $pkgver $_svnmod
  fi
  msg "SVN checkout done or server timeout"

  cp -r $_svnmod $_svnmod-build

  msg "Building the package..."
  cd  $_svnmod-build
  python setup.py install --root=$pkgdir || return 1

  msg "Cleaning build files..."
  rm -rf $srcdir/$_svnmod-build

}
