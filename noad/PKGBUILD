# Contributor: Franz Burgmann <f dot burgmann at gmail dot com>
# Maintainer: Olaf Bauer <hydro@freenet.de>

pkgname=noad
pkgver=0.8.5
pkgrel=2
pkgdesc="VDR addon for detecting commercials and setting cutting marks accordingly."
arch=('i686' 'x86_64')
url="http://noad.net23.net"
license=('GPL')
depends=('libmpeg2' 'ffmpeg')
makedepends=('libmpeg2' 'ffmpeg')
source=($url/$pkgname-$pkgver.tar.bz2
        noad-0.7.3_resource.diff
        noad-0.8.5_ffmpeg2.diff)
md5sums=('351cd867ecb323fce5f71659c8461c2a'
         'ff192a15337bff5e81660dcd85adacf3'
         'f1583e47a64be9d141e8956203d84f59')

prepare() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 -i $srcdir/noad-0.7.3_resource.diff
  patch -p1 -i $srcdir/noad-0.8.5_ffmpeg2.diff
}

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
