_pkgsourcename=libglademm
pkgname=lib32-libglademm
pkgver=2.6.7
pkgrel=1
license=('GPL')
depends=('lib32-gtk2' 'lib32-libxml2')
pkgdesc="Allows you to load glade interface files in a program at runtime"
arch=(x86_64)
url="http://xorg.freedesktop.org/"
groups=lib32
source=(ftp://ftp.ibiblio.org/pub/linux/distributions/archlinux/extra/os/i686/${_pkgsourcename}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('2f09aab7778f002efa1d7608337606c4')

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/
  cp -rPf $startdir/src/usr/lib $startdir/pkg/opt/lib32/usr/lib
}
