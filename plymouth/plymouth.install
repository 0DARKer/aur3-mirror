build() {
    add_binary /usr/bin/plymouthd
    add_binary /usr/bin/plymouth
    add_file /etc/plymouth/plymouthd.conf

    for f in $(find /usr/lib/plymouth -name *.so -type f); do
        add_binary $f
    done

    for f in $(find /usr/share/plymouth -type f); do
        add_file $f
    done
    add_runscript
}
