# Generator  : CPANPLUS::Dist::Arch 0.16
pkgname='perl-parse-cpan-meta'
pkgver='1.40'
pkgrel='1'
pkgdesc="Parse META.yml and other similar CPAN metadata files"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Parse-CPAN-Meta'
source=('http://search.cpan.org/CPAN/authors/id/S/SM/SMUELLER/Parse-CPAN-Meta-1.40.tar.gz')
md5sums=('13038b57d3f253f8851323ba9db0b1a1')

build() {
  _DISTDIR="${srcdir}/Parse-CPAN-Meta-1.40"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
