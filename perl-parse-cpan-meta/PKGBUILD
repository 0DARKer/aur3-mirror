options=('!emptydirs')
depends=('perl')
makedepends=()
url='http://search.cpan.org/dist/Parse-CPAN-Meta'
source=('http://search.cpan.org/CPAN/authors/id/D/DA/DAGOLDEN/Parse-CPAN-Meta-1.4405.tar.gz')
