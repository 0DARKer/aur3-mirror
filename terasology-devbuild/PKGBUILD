pkgname=terasology-devbuild
pkgver=720
pkgrel=1
pkgdesc="Yet another high resolution game with blocks like Minecraft! (Last succesful development build)"
arch=('x86_64' 'i686')
license=('Apache')
url="http://blog.movingblocks.net/blockmania"
options=('!strip')
depends=('java-runtime' 'xorg-server-utils' 'openal')
conflicts=('terasology-devbuild')
source=( 'terasology-devbuild' 'terasology-devbuild.desktop' "http://jenkins.movingblocks.net/job/Terasology/${pkgver}/artifact/build/distributions/Terasology.zip")
md5sums=( '415c8cdf3ca56ae29c000222c64599e9' 'eddf758b2f68f147e33c41ec55a35897' '82bf0c945718feef7e8fe2ec4f2bee93' )

package() {
    mkdir -p "${pkgdir}/usr/share/applications"
    mkdir -p "${pkgdir}/usr/share/games"
    mkdir -p "${pkgdir}/usr/bin"

    cd $srcdir
    chmod 755 terasology-devbuild run_linux.sh
    cp terasology-devbuild "${pkgdir}/usr/bin"
    cp terasology-devbuild.desktop "${pkgdir}/usr/share/applications"
    rm terasology-devbuild terasology-devbuild.desktop Terasology.zip
    cp -R $srcdir "${pkgdir}/usr/share/games/Terasology-devbuild"
}
