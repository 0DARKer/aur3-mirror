# Contributor: Sara <sara at archlinux dot us>
# Maintainer: aksr <aksr at t-com dot me>
pkgname=ft2tf
pkgver=0.8
pkgrel=1
pkgdesc="TTF to tiny font (tf) converter, for use with fbpad, using libfreetype"
arch=('i686' 'x86_64')
url="http://litcave.rudi.ir"
license=('GPL')
install=${pkgname}.install
source=(http://litcave.rudi.ir/${pkgname}-${pkgver}.tar.gz)
md5sums=('ea34d2cc70ea30b0c9639c422722e9ab')

build(){
  cd "${srcdir}/${pkgname}-${pkgver}"

  msg "Starting make..."
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
  install -Dm755 gen.sh       "${pkgdir}/usr/share/doc/${pkgname}/gen.sh"
  install -Dm644 README       "${pkgdir}/usr/share/doc/${pkgname}/README"
}

# vim:set ts=2 sw=2 et:
