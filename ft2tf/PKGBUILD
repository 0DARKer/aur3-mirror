# Contributor: Sara <sfauzia at comcast.net>

pkgname=ft2tf
pkgver=1.0
pkgrel=1
pkgdesc="ttf to tiny font converter, for use with fbpad"
arch=('i686' 'x86_64')
license=('GPL')
url="http://litcave.berlios.de"
source=(http://litcave.berlios.de/$pkgname.tar.gz)
install=$pkgname.install
md5sums=('f51b309ee63f82d8fc936b84b7304dd7')

build(){
  cd "${srcdir}"/"${pkgname}"
  msg "Starting make..."
  make
}

package() {
  cd "${srcdir}"/"${pkgname}"
  install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}

# vim:set ts=2 sw=2 et:
