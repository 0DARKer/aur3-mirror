# Maintainer: Roman Widmann <roman dot widmann at gmail dot com>

pkgname=lshell
pkgver=0.9.8
pkgrel=1
pkgdesc="Limited Shell, lets you restrict a user's environment to limited sets of commands, and more"
url="http://lshell.ghantoos.org/"
license=('GPL')
arch=(any)
depends=('python')
makedepends=('setuptools')
source=("lshell-$pkgver.tar.gz::https://sourceforge.net/projects/lshell/files/lshell/$pkgver/lshell-$pkgver.tar.gz/download")
md5sums=('807fbe6b9be798183025cf9b8e627e82')

build() {
  cd $startdir/src/lshell-$pkgver
  python setup.py install --root=$startdir/pkg --optimize=1 || return 1
}
