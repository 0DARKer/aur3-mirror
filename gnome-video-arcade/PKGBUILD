# Contributor: ianux <ianux@free.fr>
pkgname=gnome-video-arcade
pkgver=0.7.1
pkgrel=1
pkgdesc="Simple GTK2 MAME front-end wich supports both XMAME and SDLMAME."
arch=('i686' 'x86_64')
url="http://mbarnes.github.com/gnome-video-arcade/"
license=('GPL')
depends=('dbus' 'gconf' 'gnome-doc-utils' 'gstreamer0.10-base-plugins' 'hicolor-icon-theme' 'libunique' 'libwnck' 'sdlmame' 'sqlite3')
makedepends=('intltool' 'pkgconfig')
source=(http://download.gnome.org/sources/gnome-video-arcade/0.7/${pkgname}-${pkgver}.tar.bz2) 
md5sums=('780b62b14c75e05446210b948615c55c')
sha256sums=('1d9009a051b1c0446eebf5a1e2f1c4c1e17f64d41b0f4526e4f1d741113468fb')
install=${pkgname}.install

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --disable-scrollkeeper --disable-gtk-doc --without-gnome --disable-schemas-install
  make || return 1
  make GCONF_DISABLE_SCHEMA_INSTALL=1 DESTDIR=${pkgdir} install || return 1

  install -m755 -d ${pkgdir}/usr/share/gconf/schemas
  gconf-merge-schema ${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas ${pkgdir}/usr/etc/gconf/schemas/*.schemas

  rm -rf ${pkgdir}/usr/etc
}
