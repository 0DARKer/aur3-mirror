# Contributor: Dmitriy Morozov <archlinux@foxcub.org> 
pkgname=avida
pkgver=2.8.1
pkgrel=1 
pkgdesc="Study of evolution in digital organisms."
url="http://devolab.cse.msu.edu"
arch=('i686' 'x86_64')
license="GPL" 
depends=('cmake' 'python' 'ncurses') 
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver-src.tar.gz
        gcc43.patch) 
md5sums=('99d9405921a23df1813e34c96106cd47'
         '1c4620cfb1ed82ee466d7e979fd5e3c0')

build() { 
 cd $startdir/src/$pkgname-src-$pkgver
 patch -p0 < $startdir/gcc43.patch
 ./build_avida
 cd cbuild
 mkdir -p $startdir/pkg/usr
 cp -r bin $startdir/pkg/usr
 cp -r lib $startdir/pkg/usr
 mkdir -p $startdir/pkg/usr/share/avida/work
 cp work/*.cfg $startdir/pkg/usr/share/avida/work
 cp work/*.org $startdir/pkg/usr/share/avida/work
}
