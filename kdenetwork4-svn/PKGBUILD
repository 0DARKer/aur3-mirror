# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdenetwork4-svn
pkgver=1236161
pkgrel=1
pkgdesc="KDE4 Networking Programs"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdebase4-workspace-git' 'smbclient' 'libktorrent' 'libmms' 'qca-ossl' 'libotr' 'libmsn'
         'libidn' 'qimageblitz' 'v4l-utils' 'libgadu' 'ppp' 'libvncserver' 'rdesktop' 'telepathy-qt4'
	 'libxdamage')
makedepends=('subversion' 'cmake' 'boost' 'automoc4' 'speex')
conflicts=('kdenetwork')
groups=('kde4-git')
install="kdenetwork4-svn.install"

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdenetwork
_svnmod=kdenetwork

build() {
  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk $_svnmod
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi 

  mkdir ${srcdir}/build
  cd ${srcdir}/build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DMOZPLUGIN_INSTALL_DIR=/usr/lib/mozilla/plugins/ \
		-DWITH_Xmms=OFF \
		-DWITH_LibMeanwhile=OFF
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
  find ${pkgdir} -name '*.py' | xargs sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|'
}