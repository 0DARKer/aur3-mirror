post_install() {
  if [ -x /usr/lib/lightdm/lightdm-set-defaults ] ; then
    /usr/lib/lightdm/lightdm-set-defaults --keep-old --greeter=unity-greeter || true
  fi
}

post_remove() {
  if [ -x /usr/lib/lightdm/lightdm-set-defaults ] ; then
    /usr/lib/lightdm/lightdm-set-defaults --remove --greeter=unity-greeter || true
  fi
}
