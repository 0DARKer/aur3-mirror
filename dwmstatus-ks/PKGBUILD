# Maintainer: William Giokas <1007380@gmail.com>

pkgname=dwmstatus-ks
_pkgname=dwmstatus
pkgver=v0.2
pkgrel=1
pkgdesc="A simple C status bar for dwm, fork by KaiSforza"
url=("https://bitbucket.org/KaiSforza/dwmstatus")
arch=('i686' 'x86_64')
license=('MIT')
options=(zipman)
makedepends=('git')
provides=('dwmstatus')
conflicts=('dwmstatus')
source=("${_pkgname}.${pkgver}.tar.gz::https://bitbucket.org/KaiSforza/dwmstatus/get/${pkgver}.tar.gz")
md5sums=('a9dd522bc002fc24e70aa4fe4e6f1eae')
# It's just the commit hash. Nothing to be worried about.
_extractdir=KaiSforza-dwmstatus-3ddd6080abca

build() {
  cd "$srcdir/$_extractdir"
  make PREFIX=/usr
}

package() {
  cd "$srcdir/$_extractdir"
  make PREFIX=/usr DESTDIR=$pkgdir install
}

