# Contributor: ole roe√üler <ole.roessler@gmail.com>
pkgname=nepenthes-git
pkgver=20091016
pkgrel=2
pkgdesc="A versatile tool to collect malware"
url="http://nepenthes.mwcollect.org"
license=(GPL)
arch=(x86_64 i686)
depends=('subversion' 'adns' 'curl' 'geoip' 'libcap' 'pcre')
makedepends=('git')
source=(nepenthes.confd
	nepenthes.rc)
install=$pkgname.install
md5sums=(aa6785ee43240a0865a5141f88ec5f42
	1cf1eedd372fe267c67422afddd6edb0)
conflicts=('nepenthes')
replaces=(nepenthes-svn)

build() {  
  git clone git://git.carnivore.it/nepenthes.git
  cd $startdir/src/nepenthes
  autoreconf -v -i
  ./configure --prefix=/opt/nepenthes
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m755 $startdir/nepenthes.rc $startdir/pkg/etc/rc.d/nepenthes
  install -D -m755 $startdir/nepenthes.confd $startdir/pkg/etc/conf.d/nepenthes
  rm $startdir/pkg/opt/nepenthes/etc/nepenthes/nepenthes.conf.dist
}
