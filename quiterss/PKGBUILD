# Contributer: giacomogiorgianni@gmail.com 

pkgname=quiterss
_name=QuiteRSS
code=2610
pkgver=0.13.0
pkgrel=5
pkgdesc="QuiteRSS is fast and light rss ,feed reader written in C++/Qt4"
arch=('any')
url="http://code.google.com/p/quite-rss/"
license=('GPL')
depends=('qtwebkit')
makedepends=('cmake' 'gettext' 'automoc4')
options=('')
source=("http://quite-rss.googlecode.com/files/${_name}-${pkgver}.${code}-src.tar.bz2")
sha1sums=('1639c23099a806fba92c2aafbf02e84ccfcca7a5')
install=$pkgname.install
 
build() {
   
  cd "${srcdir}/${_name}-${pkgver}.${code}-src"
  sed -i '1,1i#include  <QSslError>|' src/webpage.cpp
  qmake-qt4 ${srcdir}/${_name}-${pkgver}.${code}-src/$_name.pro PREFIX=/usr \
  "CONFIG+=LINUX_INTEGRATED" \
  "INSTALL_ROOT_PATH=${pkgdir}"
 
  make
}
 
package() {
  cd "${srcdir}/${_name}-${pkgver}.${code}-src"
  make INSTALL_ROOT=${pkgdir} install
}
