pkgname=quiterss
_name=QuiteRSS
code=2739
pkgver=0.14.3
pkgrel=1
pkgdesc="QuiteRSS is fast and light rss ,feed reader written in C++/Qt4"
arch=('any')
url="http://code.google.com/p/quite-rss/"
license=('GPL')
depends=('qtwebkit' 'phonon-qt4' )
makedepends=('cmake' 'gettext' 'automoc4')
options=('')
#source=("http://quite-rss.googlecode.com/files/${_name}-${pkgver}-src.tar.bz2")
source=("http://${pkgname}.org/files/${pkgver}/${_name}-${pkgver}-src.tar.bz2")
sha1sums=('7140f4a0f06a116ac5f5ead895a5a3cf6cfbd6c7')
install=$pkgname.install
 
build() {
   
  cd "${srcdir}/${_name}-${pkgver}-src"
  #sed -i '1,1i#include  <QSslError>|' src/webpage.cpp
  qmake $_name.pro CONFIG+=release PREFIX=/usr
  
  make clean
  make -j2
}
 
package() {
  cd "${srcdir}/${_name}-${pkgver}-src"
  make INSTALL_ROOT=${pkgdir} install
}
