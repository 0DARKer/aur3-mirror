pkgname=quiterss
_pkgname=QuiteRSS
pkgver=0.18.1
pkgrel=1
pkgdesc='Fast and light RSS/Atom feed reader written on Qt/ะก++'
arch=('i686' 'x86_64')
url='http://quiterss.org/'
license=('GPL3')
depends=('qtwebkit' 'phonon-qt4' 'icu')
makedepends=('cmake' 'gettext' 'automoc4')
source=("http://quiterss.org/files/$pkgver/$_pkgname-$pkgver-src.tar.gz")
sha512sums=(1a1886fa35bfbc5440a30d72648711565ed35ff6fcd2eddab05a42fad388c087c3de9a66ee619eb28626e8b8971b2861c4f996057efc1393aaf3f068fcefe0da)
install=$pkgname.install

build() {
  cd "$srcdir"
  qmake-qt4 "$srcdir/$_pkgname.pro" \
    PREFIX=/usr \
    CONFIG+=LINUX_INTEGRATED \
    INSTALL_ROOT_PATH="$pkgdir"

  make
}

package() {
  cd "$srcdir"
  make INSTALL_ROOT="$pkgdir" install
}

