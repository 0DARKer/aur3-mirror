# Contributer: giacomogiorgianni@gmail.com 

pkgname=quiterss
_pkgname=QuiteRSS
pkgver=0.16.2
pkgrel=1
pkgdesc='Fast and light RSS/Atom feed reader written on Qt/ะก++'
arch=('i686' 'x86_64')
url='http://quiterss.org/'
license=('GPL3')
depends=('qtwebkit' 'phonon-qt4')
makedepends=('cmake' 'gettext' 'automoc4')
source=("http://quiterss.org/files/$pkgver/$_pkgname-$pkgver-src.tar.bz2")
sha512sums=('18456254418fa9854c146cc987a125fdd96618bc2631dbe0bb10f2a899c7ae3fcf168a37920e3e98862cad88dadbc566952e543c77852e01fdb70b3325b4be0c')
install=$pkgname.install

build() {
  cd "$srcdir/$_pkgname-$pkgver-src"
  qmake-qt4 "$srcdir/$_pkgname-$pkgver-src/$_pkgname.pro" \
    PREFIX=/usr \
    CONFIG+=LINUX_INTEGRATED \
    INSTALL_ROOT_PATH="$pkgdir"

  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver-src"
  make INSTALL_ROOT="$pkgdir" install
}

