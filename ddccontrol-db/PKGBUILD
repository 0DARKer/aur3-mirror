# Contributor: Hubert Czobodziñski <hcz@onet.eu>
pkgname=ddccontrol-db
pkgver=20061014
pkgrel=2
pkgdesc="Monitor database for DDCControl"
arch=('i686')
url="http://ddccontrol.sourceforge.net/"
license=('GNU')
depends=(perlxml)
source=(http://downloads.sourceforge.net/ddccontrol/${pkgname}-${pkgver}.tar.bz2)
md5sums=(91951918e5bc553c251776cdff8cea9c)

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
