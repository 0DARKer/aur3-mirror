# Contributor: Jacek Roszkowski <j.roszk@gmail.com>
pkgname=gnome-menu-file-browser-applet
pkgver=0.6.6
pkgrel=1
pkgdesc="Browse, open and manage files in your computer directly from the GNOME panel."
arch=('i686' 'x86_64')
url="http://code.google.com/p/gnome-menu-file-browser-applet/"
license=('GPL2')
groups=('gnome')
depends=('gtk2>=2.14' 'libpanelappletmm' 'glib2')
makedepends=('cmake' 'pkgconfig')
source=(http://gnome-menu-file-browser-applet.googlecode.com/files/file-browser-applet-${pkgver}.tar.gz)
md5sums=('7a3eabb266185156731f184e68506dae')

build() {
    cd ${srcdir}/file-browser-applet-${pkgver}
    cmake -D CMAKE_INSTALL_PREFIX=/usr . || return 1
    make || return 1
    make DESTDIR=${pkgdir} install || return 1
}
