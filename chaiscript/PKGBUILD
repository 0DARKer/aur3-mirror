# Maintainer: shuall <shualloret @ gmail . com>
pkgname=chaiscript
pkgver=5.0.0
pkgrel=3
pkgdesc="embedded scripting language designed from the ground up to directly target C++"
arch=('any')
url="http://www.chaiscript.com"
license=('BSD')
depends=('boost-libs')
makedepends=('cmake' 'doxygen' 'boost')
install=chaiscript.install
source=("https://github.com/downloads/ChaiScript/ChaiScript/$pkgname-$pkgver-Source.tar.bz2")
md5sums=('6a494039f8479be0fcc82ecba2299dbe')

build() {
  cd "$pkgname-$pkgver-Source"
  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr
  make
  doxygen
}

package() {
  cd "$pkgname-$pkgver-Source"
  make DESTDIR="$pkgdir/" install
  mkdir $pkgdir/usr/share/doc
  mkdir $pkgdir/usr/share/doc/chaiscript
  cp -r docs/* $pkgdir/usr/share/doc/chaiscript
}

# vim:set ts=2 sw=2 et:
