# Maintainer: Jens Staal <staal1978@gmail.com>

pkgname=libc-bench
pkgver=20110206
pkgrel=1
pkgdesc="A C library benchmarking tool"
arch=('i686' 'x86_64')
license=('GPL')
url=('http://www.etalabs.net/libc-bench.html')
source=('http://www.etalabs.net/releases/libc-bench-20110206.tar.gz')
md5sums=('f763de90f95fe68e4e03e5b6f49698ac')
_libc=('glibc') #change this one to whatever you want to benchmark


build() {
  # How do we need to define C-library at build time?
  rm -rf $srcdir/build
  cp -ar $srcdir/$pkgname-$pkgver $srcdir/build
  cd $srcdir/build
  make
}

package() {
  mkdir -p $pkgdir/opt/libc-bench/$_libc
  install -Dm755 $srcdir/build/libc-bench $pkgdir/opt/libc-bench/$_libc/
}



