# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-setupdocs-svn
pkgver=25882
pkgrel=1
pkgdesc="Setuptools plugin that automates building of docs from ReST source."
arch=('any')
url="http://code.enthought.com/"
license=('BSD')
depends=('python2' 'python2-distribute' 'python-sphinx')
optdepends=('texlive-latexextra')
makedepends=('subversion')
conflicts=('python-enthought-utils')
options=(!emptydirs)

_svnmod=SetupDocs
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

