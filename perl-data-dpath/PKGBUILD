pkgname='perl-data-dpath'
pkgver='0.49'
pkgrel='2'
pkgdesc="DPath is not XPath!"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-aliased' 'perl-class-xsaccessor' 'perl-iterator-util' 'perl-list-moreutils' 'perl-sub-exporter')
makedepends=('perl-test-deep')
url='http://search.cpan.org/dist/Data-DPath'
source=('http://search.cpan.org/CPAN/authors/id/S/SC/SCHWIGON/Data-DPath-0.49.tar.gz')
md5sums=('37a9f973dd7b09cf30cdaff64f1d75bb')
sha512sums=('7b29a6f64ed170e9c8301310f889ae8f9002057bcdf6ade34823f34f0b6a9afcaabab2078a44cb5091f7162a73a08e82709cf2ca4704033515b3c703209bbb73')
_distdir="Data-DPath-0.49"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

