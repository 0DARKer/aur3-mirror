# Contributor: Sara <sara at archlinux dot us>

pkgname=pdftxt
pkgver=0.1
pkgrel=2
pkgdesc="Extracts text from PDF files to search them"
arch=('i686' 'x86_64')
url="http://litcave.rudi.ir"
license=('custom:BSD')
depends=('mupdf')
install=${pkgname}.install
source=(http://litcave.rudi.ir/${pkgname}.tar.gz
        'mupdfgrep'
        'LICENSE')
md5sums=('ee519b9c393513354d66967245780c3c'
         'e26828088a3416def6e9ebdc159cd351'
         'ec67f29a7dec10f86ef31515ed657a91')

build(){
  cd "${srcdir}/${pkgname}"
  msg "Starting make..."
  make
}

package() {
  install -Dm755 "${srcdir}/${pkgname}/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
  install -Dm755 "${srcdir}/mupdfgrep" "${pkgdir}/usr/bin/mupdfgrep"
  install -Dm644 "${srcdir}/${pkgname}/README" "${pkgdir}/usr/share/doc/${pkgname}/README"
  install -Dm644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
