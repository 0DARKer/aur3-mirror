_pkgbasename=pyliblo
pkgname=python-$_pkgbasename
pkgver=0.9.0
pkgrel=1
pkgdesc='Python wrapper for the liblo OSC library'
arch=('i686' 'x86_64')
url='http://das.nasophon.de/pyliblo/'
license=('GPL')
depends=('python' 'liblo>=0.23')
source=("http://das.nasophon.de/download/$_pkgbasename-$pkgver.tar.gz")
md5sums=('1f32887a7a9a8ec1a76feec941874edb')

build() {

  cd "$srcdir/$_pkgbasename-$pkgver"

  python setup.py install --prefix=/usr --root="$pkgdir/"
}
