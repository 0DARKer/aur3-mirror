# Maintainer: Fabien Wang <fabien(dot)wang(at)gmail(dot)com>
# Contributor: radu242 <rbutoi(at)gmail(dot)com>

pkgname=qt4pas
pkgver=2.4
pkgrel=1
pkgdesc="Free Pascal Qt4 Binding Library"
arch=('i686' 'x86_64')
url="http://users.telenet.be/Jan.Van.hijfte/qtforfpc/fpcqt4.html"
license=('LGPL')
depends=('qt')
source=(http://fabienwang.fr/share/qt4pas-V2.4_Qt4.5.3.tar.gz)
md5sums=('e323f8aa031a416cebd35566515d487c')

build()
{
  cd ${srcdir}

	sed -ie "s:target\.path = :target\.path = ${pkgdir}:g" Qt4Pas.pro

  qmake -query
  qmake
  make
  make install

	ln -s /usr/lib/libQt4Pas.so.5.2.1 ${pkgdir}/usr/lib/libqt4intf.so
  ln -s /usr/lib/libQt4Pas.so.5.2.1 ${pkgdir}/usr/lib/libqt4intf.so.5
  ln -s /usr/lib/libQt4Pas.so.5.2.1 ${pkgdir}/usr/lib/libqt4intf.so.5.2
  ln -s /usr/lib/libQt4Pas.so.5.2.1 ${pkgdir}/usr/lib/libqt4intf.so.5.2.1
}