#Contributor: YacK <brayan@yack.com.br>
pkgname=jack-audio-connection-kit-dbus
_pkgname=jack-audio-connection-kit
pkgver=0.118.0
pkgrel=1
pkgdesc="A low-latency audio server, with D-Bus interface"
arch=('i686' 'x86_64')
license=('GPL2' 'LGPL2.1')
depends=('libsamplerate' 'python' 'dbus-core')
makedepends=('doxygen')
provides=("jack-audio-connection-kit=$pkgver" "jack=$pkgver" 'jackdbus')
conflicts=('jack-audio-connection-kit')
url="http://nedko.arnaudov.name/soft/jack/dbus/"
options=('!libtool')
changelog=ChangeLog
source=(http://nedko.arnaudov.name/soft/jack/dbus/$pkgname-$pkgver.tar.gz)
md5sums=('baeed09baf04af8b3591b56d5833955e')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

