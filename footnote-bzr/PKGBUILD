# Maintainer: crazyelf5

pkgname=footnote-bzr
pkgver=45
pkgrel=1
pkgdesc="A beautiful, fast, and simple note taking app in the style of elementary"
arch=('i686' 'x86_64')
url="https://launchpad.net/footnote"
license=('GPL3')
depends=('gtk3' 'granite-bzr' 'sqlheavy-git' 'glib2' 'gettext' 'libgee' 'vala')
makedepends=('bzr' 'gcc' 'cmake')

_bzrtrunk=lp:${pkgname%-*}
_bzrmod=${pkgname%-*}

build() {
  [ -d ${_bzrmod} ] && rm -rf ${_bzrmod}
  bzr branch ${_bzrtrunk} ${_bzrmod}
  cd ${_bzrmod}
  sed -i 's|sqlheavy-0.1|sqlheavy-0.2|' CMakeLists.txt
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
  make DESTDIR="${pkgdir}" install
}
