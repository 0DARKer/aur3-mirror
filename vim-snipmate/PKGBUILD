# Maintainer: Raphael Scholer <rscholer@gmx.de>
pkgname=vim-snipmate
pkgver=0.83
_scriptid=11006
pkgrel=7
pkgdesc='TextMate-style snippets for Vim '
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=2540'
license=('GPL2')
depends=('vim')
groups=('vim-plugins')
install=vimdoc.install
source=("${pkgname}.zip"::"http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}")
md5sums=('9bf94595c3fca7974559877ccff1938e')

package() {
	cd ${srcdir}

	# Set correct permissions
	find ./ -type f -exec chmod 644 "{}" \;

	# Install files
	mkdir -p ${pkgdir}/usr/share/vim/vimfiles/
	cp -rv after ${pkgdir}/usr/share/vim/vimfiles/
	cp -rv doc ${pkgdir}/usr/share/vim/vimfiles/
	cp -rv plugin ${pkgdir}/usr/share/vim/vimfiles/
	cp -rv ftplugin ${pkgdir}/usr/share/vim/vimfiles/
	cp -rv snippets ${pkgdir}/usr/share/vim/vimfiles/
	cp -rv syntax ${pkgdir}/usr/share/vim/vimfiles/
	cp -rv autoload ${pkgdir}/usr/share/vim/vimfiles/
}
