# Maintainer: Daniele Paolella <dp@mcrservice.it>
pkgname=trac-mercurial
pkgver=0.12.0.23
pkgrel=2
pkgdesc="Mercurial plugin for Trac"
arch=('i686' 'x86_64')
url="http://trac.edgewall.org/wiki/TracMercurial"
license=('GPL2')
depends=('setuptools' 'trac>=0.12')
makedepends=('subversion')
changelog=ChangeLog

build() {
  cd "$srcdir"
  svn co http://svn.edgewall.com/repos/trac/plugins/0.12/mercurial-plugin@9946 || return 1
  cd mercurial-plugin
  python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
  mkdir -p "$pkgdir/usr/share/doc/trac-mercurial"
  install README "$pkgdir/usr/share/doc/trac-mercurial"
}

# vim:set ts=2 sw=2 et:
