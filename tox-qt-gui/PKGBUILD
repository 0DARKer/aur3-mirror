# Maintainer: Marat "Morion" Talipov <morion.self@gmail.com>

pkgname=tox-qt-gui
pkgver=20130730
pkgrel=1
pkgdesc="FOSS instant messaging application aimed to replace Skype (GUI)"
arch=('i686' 'x86_64')
url="http://tox.im"
license=('GPLv3')
depends=('ncurses' 'libsodium' 'qt5-tools')
makedepends=('git' 'make')

_gitroot='https://github.com/nurupo/ProjectTox-Qt-GUI.git'
_gitname='ProjectTox-Qt-GUI'

build() {
  	cd "$srcdir"
  	msg "Connecting to GIT server...."

  	if [[ -d "$_gitname" ]]; then
    		cd "$_gitname" && git pull origin
    		msg "The local files are updated."
  	else
    		git clone --recursive "$_gitroot" "$_gitname"
 	fi

	cd "$srcdir/$_gitname"

	if [[ -d build ]]; then
		rm -rf build
	fi

	mkdir build && cd build
	msg "Building ..." 
	qmake -Wall ../projectfiles/QtCreator/TOX-Qt-GUI.pro
	make
	msg "Done"
}

package() {
	cd "$srcdir/$_gitname/"

	#dir
	install -dm 755 $pkgdir/usr/bin

	#bin file
	install -m 755 ./build/TOX-Qt-GUI $pkgdir/usr/bin/tox-qt-gui
		 
	msg "Removing build directory ..."
	rm -rf build
	msg "Done"
}
