# Maintainer: spider-mario <spidermario@free.fr>
# Contributor: Marcin Karpezo <sirmacik at gmail dot com>
# Contributor: Daenyth <Daenyth+Arch [at] gmail [dot] com>
pkgname=rakudo-star
pkgver=2014.12
pkgrel=1
pkgdesc="A useful, usable, “early adopter” distribution of Perl 6"
arch=('i686' 'x86_64')
url='http://rakudo.org/'
license=(PerlArtistic)
depends=("nqp>=$pkgver" "nqp-moarvm>=$pkgver")
makedepends=('perl>=5.10')
provides=('rakudo' 'rakudo-moarvm')
conflicts=('rakudo' 'rakudo-moarvm')
options=('!makeflags')
source=(http://rakudo.org/downloads/star/$pkgname-$pkgver.tar.gz)
sha512sums=('f87b9a969e8a2b6a15c3ed9db2073fb18cf9905dd2bc858f2aa32486af151eca15c52dd94c0e4acbbe93906cbee9564fe82637989d129509b902f2daa02407f9')

build() {
  cd "$pkgname-$pkgver"
  perl Configure.pl --prefix=/usr --backends=moar,parrot
  make
}

package() {
  cd "$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install

  # remove references to $pkgdir
  find "$pkgdir" -iname '*.pir' -o -wholename '*/bin/*' -exec env strip="$pkgdir" perl -pe 's/\Q$ENV{strip}//g' -i {} +

  # ufo appears to need this
  install --directory \
    "$pkgdir"/usr/lib/parrot/"$(parrot_config VERSION)"/languages/perl6/site/ \
    "$pkgdir"/usr/languages/perl6/site/
}
