# $Id: PKGBUILD 170834 2012-11-12 13:27:20Z heftig $
# Maintainer: Ionut Biru <ibiru@archlinux.org>

_pkgname=gnome-contacts
pkgname=$_pkgname-git
pkgver=20130214
pkgrel=1
pkgdesc="Contacts Manager for GNOME"
arch=(i686 x86_64)
url="http://www.gnome.org"
license=('GPL2')
groups=(gnome-extra)
depends=('gtk3' 'folks' 'libnotify' 'gnome-desktop' 'dconf' 'gnome-online-accounts' 'libgee' 'telepathy-glib' 'cheese')
makedepends=('intltool' 'vala')
install=$_pkgname.install
replaces=('gnome-contacts')
provides=('gnome-contacts')
conflicts=('gnome-contacts')

_gitroot="http://git.gnome.org/browse/gnome-contacts"
_gitname="gnome-contacts"

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  
  ./autogen.sh --prefix=/usr --libexecdir=/usr/lib/gnome-contacts
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir" install
  rm -rf "$srcdir/$_gitname-build"
}

# vim:set ts=2 sw=2 et:
