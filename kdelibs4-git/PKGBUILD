pkgname=kdelibs4-git
pkgver=20110208
pkgrel=2
pkgdesc="KDE Core Libraries"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('strigi-git' 'attica-git' 'libxss' 'xz' 'openssl' 'soprano-git' 'heimdal'
        'shared-desktop-ontologies' 'qca' 'libdbusmenu-qt-bzr' 'polkit-qt-git' 'grantlee'
        'shared-mime-info' 'enchant' 'giflib' 'jasper' 'openexr' 'xdg-utils'
        'phonon' 'hicolor-icon-theme' 'upower' 'udisks' 'libxcursor' 'libhupnp-svn')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'intltool' 'avahi' 'libgl' 'hspell'
	     'docbook-xsl' 'git')
install='kdelibs.install'
source=('kde-git.profile')
md5sums=('0d297511626f30c4141bde053b5ae8aa')

_gitroot="git://anongit.kde.org/kdelibs"
_gitname="kdelibs"

build() {
export PATH=$PATH:/opt/kde4/bin
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/opt/kde4/lib/pkgconfig
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/kde4/lib

cd $srcdir
  msg "Connecting to the GIT server...."
  
  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  
  msg "GIT checkout done"
  msg "Starting make..."
  
  
#  mkdir $srcdir/$_gitname-build
  
  cd $srcdir/$_gitname-build

  cmake $startdir/src/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
               -DCMAKE_SKIP_RPATH=ON \
               -DKDE_DISTRIBUTION_TEXT='Arch Linux' \
               -DCMAKE_INSTALL_PREFIX=/opt/kde4 \
               -DSYSCONF_INSTALL_DIR=/opt/kde4/etc \
               -DHTML_INSTALL_DIR=/opt/kde4/share/doc/kde/html \
               -DKDE_DEFAULT_HOME='.kdegit' \
               -DWITH_FAM=OFF \
               -DKAUTH_BACKEND=PolkitQt-1
   make
}

package() {
  cd $srcdir/$_gitname-build
  make DESTDIR=$pkgdir install
  rm -f $pkgdir/usr/share/apps/kssl/ca-bundle.crt
  ln -sf /etc/ssl/certs/ca-certificates.crt $pkgdir/opt/kde4/share/apps/kssl/ca-bundle.crt
  install -D -m755 ${srcdir}/kde-git.profile ${pkgdir}/etc/profile.d/kde-git.sh
  rm -r $srcdir/$_gitname-build
}
