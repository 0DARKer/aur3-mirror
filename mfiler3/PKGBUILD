# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.4.7
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.sakura.ne.jp/"
license=('GPL2')
depends=('saphire>=3.6.2')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/53899/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('db7068c4a34cc58ecca5c72ac7d983f8')
