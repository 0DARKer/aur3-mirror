# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.3.6
pkgrel=2
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire>=3.1.3')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/52017/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('54d46fb0c07aa1ab0d95847b0f25b596')
