# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.2.4
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/51251/${pkgname}-${pkgver}.tgz
        arch.patch)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  patch -Np1 <${srcdir}/arch.patch

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('9aa967ea936971ac05a4195f4057add0'
         'ff0e81319ce449911480b3f421bfb471')
