# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.4.2
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.wiki.fc2.com/"
license=('GPL2')
depends=('saphire>=3.4.8')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/53018/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('d50b7a7f3dc40ed45470c2d11f6a7ed6')
