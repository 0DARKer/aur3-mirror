# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.2.5
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/51262/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('30ec9bc0b50864fc7a9b8029d17f0039')
