# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.3.5
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire>=3.0.6')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/51907/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('90b37de1f848fd498657ea8d0916614e')
