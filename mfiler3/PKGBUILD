# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.2.2
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/51205/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 prefix=${pkgdir}/usr sysconfdir=${pkgdir}/etc install

  install -m644 CHANGELOG.txt README.{en,ja}.txt \
    ${pkgdir}/usr/share/doc/mfiler3/
}

md5sums=('a7c30eb9d65e2840f5c87d223e0fa5c1')
