# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.3.9
pkgrel=4
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.wiki.fc2.com/"
license=('GPL2')
depends=('saphire>=3.2.1')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/52266/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('09260b045b894f2747ac4a72dd6380ce')
