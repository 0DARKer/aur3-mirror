# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.2.8
pkgrel=2
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire>=2.0.2')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/51681/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('13f6f309d12b026c26dde695831b7626')
