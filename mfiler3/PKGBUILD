# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.4.0
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.wiki.fc2.com/"
license=('GPL2')
depends=('saphire>=3.3.0')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/52578/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('1657d845dd538cceec9b1b72e9137409')
