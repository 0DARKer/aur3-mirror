# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.4.8
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.sakura.ne.jp/"
license=('GPL2')
depends=('saphire>=3.6.3')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/54022/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('7a1d38acfae984c6eeb2d3ba999898bc')
