# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.4.3
pkgrel=1
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.wiki.fc2.com/"
license=('GPL2')
depends=('saphire>=3.5.0')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/53063/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('9e9d2fa9b1325aa714b690d14e94ab20')
