# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.2.7
pkgrel=2
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire>=1.3.7')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/51535/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('b9213d6d525a7a43b9fe2c1cd47ab7c8')
