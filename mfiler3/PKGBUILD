# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.2.1
pkgrel=2
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.web.fc2.com/"
license=('GPL2')
depends=('saphire')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/50643/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 prefix=${pkgdir}/usr sysconfdir=${pkgdir}/etc install
}

md5sums=('7647f08d403dbeb93fac2c63b3cbaf3e')
