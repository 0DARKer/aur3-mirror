# Contributor: noonov <noonov@gmail.com>

pkgname=mfiler3
pkgver=4.4.1
pkgrel=2
pkgdesc="A feature-rich console file manager"
arch=('i686' 'x86_64')
url="http://ab25cq.wiki.fc2.com/"
license=('GPL2')
depends=('saphire>=3.4.0')
optdepends=('lv' 'vim')
source=(http://dl.sourceforge.jp/mfiler3/52750/${pkgname}-${pkgver}.tgz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --with-optimize
  make -j1
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make -j1 DESTDIR=${pkgdir} install
}

md5sums=('b22b0d250247caefddcce33abb45b76d')
