_plugin_name=default-fullzoom-level
pkgname=firefox-extension-$_plugin_name
pkgver=7.0.5
pkgrel=1
pkgdesc="Plugin for firefox. Set Default FullZoom Level."
arch=('any')
url="https://addons.mozilla.org/de/firefox/addon/${_plugin_name}/"
license=('MPL')
depends=("firefox")
#source=("https://addons.mozilla.org/firefox/downloads/file/134648/default_fullzoom_level-7.0.5-fx.xpi")
source=("${_plugin_name}-${pkgver}.xpi::https://addons.mozilla.org/firefox/downloads/latest/6965/addon-6965-latest.xpi")
md5sums=('0f0a6e47c405e83ab2e207413f22645b')


package() {
  #local emid=$(sed -n -e '/<\?em:id>\?/!d; s/.*\([\"{].*[}\"]\).*/\1/; s/\"//g; p; q' install.rdf)
  local emid={D9A7CBEC-DE1A-444f-A092-844461596C4D}
  local dstdir=$pkgdir/usr/lib/firefox/extensions/${emid}
  install -d $dstdir
  rm *.xpi
  cp -dpr --no-preserve=ownership * $dstdir
}
