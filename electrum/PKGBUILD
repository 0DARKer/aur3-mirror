# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=electrum
_realname=Electrum
pkgver=1.7.2
pkgrel=1
pkgdesc="Lightweight Bitcoin wallet, stable version"
arch=('any')
depends=('gettext' 'python2' 'python2-ecdsa' 'python2-pyqt' 'python2-sip' 'python2-slowaes' 'qt4' 'sip')
makedepends=('gcc' 'make')
optdepends=('python2-zbar: QR code reading support')
url="http://electrum.org/"
license=('GPL3')
source=(http://download.electrum.org/download/$_realname-$pkgver.tar.gz
        http://download.electrum.org/download/$_realname-$pkgver.tar.gz.asc
        electrum.install)
provides=('electrum')
conflicts=('electrum-git')
install=electrum.install

build() {
  cd "$srcdir"/$_realname-$pkgver

  msg 'Fixing Python version...'
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/python#/usr/bin/python2#g'
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/env python#/usr/bin/env python2#g'

  python2 mki18n.py
  pyrcc4 icons.qrc -o lib/icons_rc.py
  python2 setup.py sdist --format=zip,gztar
}

package() {
  cd "$srcdir"/$_realname-$pkgver
  python2 setup.py install --root=$pkgdir
}

md5sums=('510e66e9ac2d957d5286889b050d2478'
         '302813c7c7a45dc66ea370741c40c3d5'
         '49a3b6b4985a90c3b7da229c160735e3')
sha256sums=('5649cf6245d48789720229e9b7d01ec8eb0b30af38214d2844fcf1ac571287e7'
            '7d5b98c5d279a10e36ee511eac25dab43c022e101614def09bd8f06c67971e0e'
            'dfaab558fff85c026427627610a66531a5bfcfedcf54c4d058d14ed6c27db547')
