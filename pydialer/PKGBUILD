pkgname=pydialer
pkgver=0.6
pkgrel=3
pkgdesc="A simple and handy frontend for WvDial written in Python, fork of pyWvDial"
arch=('i686' 'x86_64')
url="http://code.google.com/p/pydialer"
depends=('python2' 'wvdial' 'pygtk')
optdepends=(
	'python-notify: needed if you want system notifications'
)
license=('GPL')
source=(http://pydialer.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('18d9911e823d906f967c998babb61ac9')

build(){
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py install --prefix=/usr --root=$pkgdir || return 1
}
