# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-text-wrapper
pkgver=1.02
pkgrel=1
pkgdesc="Simple word wrapping routine"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~cjm/Text-Wrapper-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/C/CJ/CJM/Text-Wrapper-$pkgver.tar.gz")
md5sums=('a0cdfe6e9e9627db147b3970d3fcad4d')

build() {
	cd "$srcdir/Text-Wrapper-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Text-Wrapper-$pkgver"
	make install DESTDIR="$pkgdir"
}
