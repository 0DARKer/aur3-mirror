# Contributor: Paul Burton <paulburton89@gmail.com>

pkgname=fbcmd
pkgver=1.0b3
pkgrel=2
pkgdesc="A Command Line Interface (CLI) for Facebook."
arch=('i686' 'x86_64')
url="http://fbcmd.dtompkins.com"
license=('GPL3')
groups=()
depends=(php)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=fbcmd.install
source=(http://fbcmd.dtompkins.com/downloads/$pkgname-1-0-beta3-dev13.zip
        fbcmd-script)
noextract=()
md5sums=('960d5bf1b122f4379b938978c0769560'
         '7e5ea08329050526e2b2ac4b414ca4c2')

build() {
  cd $srcdir/$pkgname
  
  mkdir -p $pkgdir/usr/lib/fbcmd
  mkdir -p $pkgdir/usr/bin
  
  cp -r * $pkgdir/usr/lib/fbcmd
  cp $srcdir/fbcmd-script $pkgdir/usr/bin/fbcmd
  chmod +x $pkgdir/usr/bin/fbcmd
}

