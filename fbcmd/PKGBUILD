# Maintainer: jsteel <jsteel at vorx dot com>
# Contributor: Paul Burton <paulburton89@gmail.com>

pkgname=fbcmd
pkgver=1.0beta4
_pkgver=1-0-beta4
pkgrel=1
pkgdesc="A Command Line Interface (CLI) for Facebook"
arch=('i686' 'x86_64')
url="http://fbcmd.dtompkins.com"
license=('GPL3')
depends=(php)
install=fbcmd.install
source=(http://fbcmd.dtompkins.com/downloads/${pkgname}-${_pkgver}.zip
        fbcmd-script)
md5sums=('083b5959b60bc7e12e14cdc9257457b8'
         '66960b96b4f0dd4e3693362e2996197d')

package() {
  install -dm 755 "${pkgdir}/usr/lib/"
  install -Dm 755 "${srcdir}/fbcmd-script" "${pkgdir}/usr/bin/fbcmd"
  cp -r "${srcdir}/${pkgname}"/* "${pkgdir}/usr/lib/"
}

