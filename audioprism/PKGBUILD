# Maintainer: Vanya A. Sergeev <vsergeev at gmail dot com>
pkgname=audioprism
pkgver=1.0.0
pkgrel=1
epoch=
pkgdesc="A real-time spectrogram tool for PulseAudio and a command-line spectrogram tool for WAV files"
arch=('i686' 'x86_64')
url="https://github.com/vsergeev/audioprism"
license=('MIT')
depends=('libpulse' 'fftw' 'sdl2' 'sdl2_ttf' 'libsndfile' 'graphicsmagick')

source=("https://github.com/vsergeev/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('24ed939c41ce23c1f61d40ab4d9fd739')
sha1sums=('d61533f7f857cfd3abf229fe468758c1fe48b7a8')
sha256sums=('99535b9950625a419e2ddb4fc630ddadd0efbec5ebfcb73812665629e90f8c34')
sha384sums=('11871e3e806fb29b49eae0d43c4809a3a7f7eab9544dfe131864221d3aeaabe892bcd9bc11d8aae859740bcd4b6cc954')
sha512sums=('97c02e61592bce2ae7059c2d0fd5d05378933c6c9f2e366bfa4d579c8e9615eaf6b8ff49d586c01f538a8d94a05f3eea0f3d9dc8b4271e7e0f87b9c0f36ada0b')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
