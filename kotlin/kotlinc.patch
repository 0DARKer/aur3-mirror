-if $cygwin; then
-    # Remove spaces from KOTLIN_HOME on windows
-    KOTLIN_HOME=`cygpath --windows --short-name "$KOTLIN_HOME"`
-fi
+: KOTLIN_HOME:=/usr/share/kotlin
 
 [ -n "$JAVA_OPTS" ] || JAVA_OPTS="-Xmx256M -Xms32M -noverify"
 
