-    if expr "${TARGET:-.}/" : '/.*/$' > /dev/null; then
-        SOURCE=${TARGET:-.};
-    else
-        SOURCE=`dirname "$SOURCE"`/${TARGET:-.};
-    fi;
-done;
-
-# see #2092
-KOTLIN_HOME=`dirname "$SOURCE"`
-KOTLIN_HOME=`cd "$KOTLIN_HOME"; pwd -P`
