pkgname=lico-update
pkgver=0.3.6
pkgrel=1
pkgdesc="The Linux Counter automatic update script"
url="https://linuxcounter.net/script.html"
arch=('any')
license=('GPL2')
depends=('perl' 'lsb-release')
replaces=('machine-update')
conflicts=('machine-update')
source=("http://linuxcounter.net/script/lico-update.sh")
md5sums=('f36017b81e73a0b39265aa9316742216')

package() {
	install -D -m755 ${srcdir}/${pkgname}.sh ${pkgdir}/usr/bin/${pkgname}.sh
}

