# Maintainer: Benjamin Hedrich <kiwisauce (a) pagenotfound (dot) de>

pkgname=eclipse-pydev
pkgver=2.3.0
pkgrel=2
pkgdesc="Python IDE for Eclipse"
url="http://pydev.org/"
arch=('any')
license=('EPL')
depends=('eclipse')
makedepends=('unzip')
conflicts=('eclipse-aptana')
source=("http://downloads.sourceforge.net/project/pydev/pydev/PyDev%20${pkgver}/PyDev%20${pkgver}.zip")
sha256sums=('7cee79ac2a9b5176146772e05d3fc63069fcbb9700c098fcf84fd932a4bf83f2')



package () {
  _dest=${pkgdir}/usr/share/eclipse/dropins/${pkgname/eclipse-}/eclipse

  install -dm0644 ${_dest} 
  
  cp -r {$srcdir/features,$srcdir/plugins} $_dest/

  rm -rf ${_dest}/features/org.python.pydev.django_templates.feature_${pkgver}.*
  rm -rf ${_dest}/plugins/org.python.pydev.django_templates_${pkgver}.*
  
  chmod -R a+x ${_dest}/

}

