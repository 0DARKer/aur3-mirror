pkgname='perl-package-variant'
pkgver='1.001004'
pkgrel='2'
pkgdesc="Parameterizable packages"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-import-into>=1' 'perl-module-runtime>=0.013' 'perl-strictures>=1')
makedepends=('perl-test-fatal')
url='http://search.cpan.org/dist/Package-Variant'
source=('http://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Package-Variant-1.001004.tar.gz')
md5sums=('f829755d308ad6199bccc8fbc5d67886')
sha512sums=('9b1fe74b3dd0c2dccce3adc270f8ce5f20a4478d30c5bacad74dc281f16a4748827c3d0d13756f4f6637e484ad54fa95cc1ea2494171e938cdae5d3fb4c697fe')
_distdir="Package-Variant-1.001004"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

