# Maintainer: codestation <codestation404 at gmail dot com>

pkgname=wxmedit
pkgver=2.9.6
pkgrel=1
pkgdesc="Cross-platform Text/Hex Editor, a fork of MadEdit with bug fixes and improvements"
arch=("i686" "x86_64")
url="https://code.google.com/p/wxmedit/"
license=('GPL')
depends=('wxgtk' 'icu' 'desktop-file-utils' 'boost')
source=("$pkgname"::'git://github.com/hltj/wxMEdit.git#tag='"$pkgver")
install=wxmedit.install
md5sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="${pkgdir}" install
}
