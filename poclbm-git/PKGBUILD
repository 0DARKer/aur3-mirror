# Maintainer: TJ Vanderpoel <tj@rubyists.com>
pkgname=poclbm-git
pkgver=20110519
pkgrel=2
pkgdesc="The poclbm miner, for mining bitcoin or namecoin"
arch=(i686 x86_64)
url="https://github.com/m0mchil/poclbm"
license=('Public Domain')
depends=('python2' 'python2-pyopencl' 'boost')
makedepends=('git')
source=(README.md)
md5sums=('f796e783ceab1088a8388a3443ff2ad8')

_gitroot="https://github.com/m0mchil/poclbm.git"
_gitname="poclbm"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin master
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  sed -i -e 's|#!/usr/bin/python$|#!/usr/bin/python2|' "$srcdir/$_gitname-build/poclbm.py"

  #
  # BUILD HERE
  #
}

package() {
  install -D -d -m 0755 "$pkgdir/var/lib/poclbm"
  install -D -d -m 0755 "$pkgdir/usr/bin"
  cp -a "$srcdir/$_gitname-build"/* "$pkgdir/var/lib/poclbm/"
  chmod 755 "$pkgdir/var/lib/poclbm/poclbm.py"
  ln -s /var/lib/poclbm/poclbm.py "$pkgdir/usr/bin/poclbm"
  install -D -m0644 README.md "$pkgdir/usr/share/doc//poclbm/README.md"
} 
