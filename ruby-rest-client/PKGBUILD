# Maintainer: Emiliano Vavassori <syntaxerrormmm(at)gmail.com>
pkgname=ruby-rest-client
_gemname=rest-client
pkgver=1.6.1
pkgrel=1
pkgdesc="Simple HTTP and REST client for Ruby, inspired by microframework syntax for specifying actions"
arch=(any)
url="http://github.com/archiloque/rest-client"
license=('MIT')
depends=('ruby' 'ruby-mime-types>=1.16')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem
        LICENSE)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('5e1340eeb657e118b0d2ff79701a1c74'
         '5a2fef99cadcc60af495be819af0ad36')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${_gemname}-${pkgver}.gem
}

package(){
  install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m 644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
