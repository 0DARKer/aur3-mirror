# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=milou
pkgver=0.1
pkgrel=1
pkgdesc="A dedicated search application built on top of Baloo"
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/extragear/base/milou'
license=('GPL')
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4' 'boost')
source=("http://quickgit.kde.org/?p=milou.git&a=snapshot&h=66f48bd27a63ffb3d657c641285fe437b11fea94&fmt=tgz")
md5sums=('a20475ca4de90cad1226e02e05811385')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../milou -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix)
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
