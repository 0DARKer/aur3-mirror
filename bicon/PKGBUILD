pkgname=bicon
pkgver=0.2.0
pkgrel=4
pkgdesc="A bidirectional console"
url="http://www.arabeyes.org/project.php?proj=BiCon"
arch=('any')
license=('LGPL')
depends=('fribidi' 'kbd' 'xorg-xkbutils')
options=('!buildflags')
makedepends=('libtool')
source=("http://prdownloads.sourceforge.net/arabeyes/$pkgname-$pkgver.tar.gz")
md5sums=('911600c6e9fd3595bea95ae250b8f96a')

build() {
  cd $srcdir/$pkgname-$pkgver
  libtoolize
  autoreconf
  ./configure --prefix=/usr --disable-static --enable-fribidi \
      --mandir=/usr/share/man --with-gtk=2.0,3.0
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR="${pkgdir}" INSTALL="install -p" install
}
