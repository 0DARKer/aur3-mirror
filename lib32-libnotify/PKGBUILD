pkgname=lib32-libnotify
pkgver=0.5.2
pkgrel=1
pkgdesc="Desktop notification library"
arch=(x86_64)
url="http://www.galago-project.org/"
license=('LGPL')
depends=('lib32-dbus-glib>=0.92' 'lib32-gtk2>=2.22.1')
options=('!libtool')
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.xz)
sha256sums=('a4d0ea4021c8521fbd71da9ef10802168cbd4d437a299e78aae21a4fd714623e')

build() {
  mkdir -p ${startdir}/pkg/opt/lib32/usr
  cp -rPf ${startdir}/src/usr/lib ${startdir}/pkg/opt/lib32/usr
}
