pkgname=vim-unite
pkgver=5.0
_gitcommit=504d56f
pkgrel=3
pkgdesc="Unite and create user interfaces"
arch=('any')
url="https://github.com/Shougo/unite.vim"
license=('MIT')
depends=('vim>=7.0')
optdepends=('vim-vimproc: for various unite sources')
groups=('vim-plugins')
install=vimdoc.install
source=($pkgname-$pkgver.tar.gz::"https://github.com/Shougo/unite.vim/tarball/$_gitcommit")
sha1sums=('e2be22168eb15fd596de7904dbba8ce4a7b05d3a')

package() {
	cd "$srcdir/Shougo-unite.vim-$_gitcommit"

	installpath="${pkgdir}/usr/share/vim/vimfiles"

	install -d $installpath/{autoload/unite,plugin/unite}
	install -d $installpath/autoload/unite/{filters,kinds,sources}
	install -d $installpath/autoload/vital/_dbf7878/{data,system,vim/buffer}
	install -Dm644 autoload/*.vim $installpath/autoload/
	install -Dm644 autoload/unite/*.vim $installpath/autoload/unite/
	install -Dm644 autoload/unite/filters/* $installpath/autoload/unite/filters/
	install -Dm644 autoload/unite/kinds/* $installpath/autoload/unite/kinds/
	install -Dm644 autoload/unite/sources/* $installpath/autoload/unite/sources/
	install -Dm644 autoload/vital/*.vim* $installpath/autoload/vital/
	install -Dm644 autoload/vital/_dbf7878/*.vim $installpath/autoload/vital/_dbf7878/
	install -Dm644 autoload/vital/_dbf7878/data/* $installpath/autoload/vital/_dbf7878/data/
	install -Dm644 autoload/vital/_dbf7878/system/* $installpath/autoload/vital/_dbf7878/system/
	install -Dm644 autoload/vital/_dbf7878/vim/buffer/* $installpath/autoload/vital/_dbf7878/vim/buffer/
	install -Dm644 doc/unite.txt $installpath/doc/unite.txt
	install -Dm644 plugin/unite.vim $installpath/plugin/unite.vim
	install -Dm644 plugin/unite/* $installpath/plugin/unite/
	install -Dm644 syntax/unite.vim $installpath/syntax/unite.vim
}
