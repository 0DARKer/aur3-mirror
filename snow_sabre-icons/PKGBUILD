# Maintainer: Malina Salina <mali#archlinux>

pkgname=snow_sabre-icons
_pkgname=snow_sabre
pkgver=1.0
pkgrel=1
pkgdesc="Light and Dark (black & grey) icon theme for Gnome ported form MacOS from deviant art user minimamente."
arch=('any')
url="http://naf1971.deviantart.com/art/Snow-sabre-192507414?"
license=('GPL')
depends=()
optdepends=()
source=("http://www.deviantart.com/download/192507414/snow_sabre_by_naf1971-d36m3o6.zip")
md5sums=('397ba9e82b45675f0515e0bf6961717b')

build() {
cd $srcdir/Snow\ sabre\ black\ \&\ light
tar xvf  Snow\ sabre.tar.bz2
tar xvf Snow\ Sabre\ black.tar.bz2
}
package() {   
mkdir -p "${pkgdir}/usr/share/icons/"
  cp -aT ${srcdir}/Snow\ sabre\ black\ \&\ light/Snow\ sabre "${pkgdir}/usr/share/icons/${_pkgname}/"
  cp -aT ${srcdir}/Snow\ sabre\ black\ \&\ light/Snow\ Sabre\ black "${pkgdir}/usr/share/icons/${_pkgname}_black/"
  chmod -R 755 "${pkgdir}/usr/share/icons/"
  
}

# vim:set ts=2 sw=2 et:

