#Maintainer: Jarred Leonardo <jarredleonardo at googlemail dot com>

pkgname=xcursor-blackstyle
pkgver=1.0
pkgrel=1
pkgdesc="BlackStyle cursor theme."
arch=(i686 x86_64)
url="http://xfce-look.org/content/show.php/BlackStyle?content=106688"
license=('Artistic 2.0')
depends=()
source=("http://xfce-look.org/CONTENT/content-files/106688-BlackStyle.tar.gz")
md5sums=('e05dd9ae5be7446bbb618b021ace98f9')

build() {
	cd $startdir/src/BlackStyle
	install -d -m755 $startdir/pkg/usr/share/icons/blackstyle/cursors
	cd $startdir/src/BlackStyle/cursors
	for i in * ; do
		install -D -m644 $i $startdir/pkg/usr/share/icons/blackstyle/cursors
	done
}