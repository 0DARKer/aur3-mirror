pkgname=wineqq
pkgver=20120302
pkgrel=1
pkgdesc='wine version of QQ client,made by Longene Team.'
arch=('i686' 'x86_64')
url='http://www.longene.org/'
license=('GPL')
depends=()
source=("http://www.longene.org/download/wine-qq2012-for-linux_20120302_ByLongeneTeam.deb")
md5sums=('9a34af7f4d916ba630c1572b066a74d0')
[[ $CARCH == 'x86_64' ]] && depends=()

package()
{
	tar xzvf ${srcdir}/data.tar.gz -C ${pkgdir}/
	chmod 755 ${pkgdir}/opt
	sed -i 's/home\/$MYNAME\/$WINEQQ/opt\/$QQVER\/wineapp\/.wine/'g ${pkgdir}/opt/qq2012/wineapp/qq/qq.sh
	sed -i 's/$MYNAME\/$WINEQQ/opt\/$QQVER\/wineapp\/.wine/'g ${pkgdir}/opt/qq2012/wineapp/qq/qq.sh
	sed -i 's/~/$HOME/'g ${pkgdir}/opt/qq2012/wineapp/qq/qq.sh
	install -Dm644 ${pkgdir}/opt/qq2012/wineapp/qq/qq2012.desktop ${pkgdir}/usr/share/applications/qq2012.desktop
}
