#Maintainer: phoenixlzx <phoenixlzx [at] archlinuxcn.org>

pkgname=wineqq
pkgver=20120531
pkgrel=2
pkgdesc='wine version of QQ client,made by Longene Team.'
arch=('i686' 'x86_64')
url='http://www.longene.org/'
license=('Other')
if [ "$CARCH" = "i686" ]; then
depends=('gtk2')
elif [ "$CARCH" = "x86_64" ]; then
depends=('lib32-gtk2')
fi
source=("http://www.longene.org/download/WineQQ2012-20120531-Longene.deb")
md5sums=('34321d609fdd95e128c6a77cbd76e172')

package()
{
	tar xzvf ${srcdir}/data.tar.gz -C ${pkgdir}/
	chmod -R 755 ${pkgdir}/opt/longene
	install -Dm644 ${pkgdir}/opt/longene/wineapp/qq2012/qq2012-test.desktop ${pkgdir}/usr/share/applications/qq2012-test.desktop
}
