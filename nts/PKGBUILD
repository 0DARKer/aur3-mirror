pkgname=nts
pkgver=77
pkgrel=1
pkgdesc="Note taking simplified"
arch=('any')
url="http://www.duke.edu/~dgraham/NTS/"
license=('GPL')
depends=('python2' 'wxpython' 'python-dateutil')
optdepends=('docutils: for displaying/printing notes as HTML')
makedepends=('setuptools')
source=(http://www.duke.edu/~dgraham/NTS/$pkgname-$pkgver.tar.gz)
md5sums=('82423ef0f2fe9513b908da2d42cfc4cd')

build() { 
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --prefix=/usr --root=$pkgdir 
}
