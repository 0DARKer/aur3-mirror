pkgname=pygeoip
pkgver=0.1.4
pkgrel=1
pkgdesc="Pure Python GeoIP API"
arch=('any')
url='http://pypi.python.org/pypi/pygeoip'
license=('LGPL')
depends=('python2')
makedepends=('setuptools')
#source=("http://pypi.python.org/packages/source/d/${pkgname}/${pkgname}-$pkgver.zip")
source=("http://pypi.python.org/packages/source/p/${pkgname}/${pkgname}-${pkgver}.zip")
options=(!emptydirs)

build() {
  cd ${srcdir}/$pkgname-$pkgver
  python setup.py install --root=${pkgdir} --optimize=1 || return 1
}
md5sums=('618d25078a7f6aa76d8e69b59cdeb065')

