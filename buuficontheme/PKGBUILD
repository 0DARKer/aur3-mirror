pkgname=buuficontheme
pkgver=3.0.0
pkgrel=1
pkgdesc="An icon theme for Gnome based on the Buuf iconset by Mattahan"
arch=('any')
url="http://buuficontheme.free.fr"
license=('cc-by-nc-sa')
depends=('hicolor-icon-theme')
optdepends=()
source=($pkgname-$pkgver.tar.gz::http://buuficontheme.free.fr/buuf$pkgver.tar.gz)
md5sums=('36c6e5d50de1984b80d14047adff480c')

build() {
  cd .
}

package() {
  install -d -m644 "${srcdir}/buuf2.32" "${pkgdir}/usr/share/icons/${pkgname}"
}
