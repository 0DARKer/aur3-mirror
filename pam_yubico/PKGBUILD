# Contributor: Peter Hultqvist <endnode dot se>
# Contributor: Fernando Jim√©nez Solano <fjim at sdfeu dot org>
pkgname=pam_yubico
pkgver=2.13
pkgrel=2
pkgdesc="Yubico Pluggable Authentication Module (PAM) "
arch=('i686' 'x86_64' 'armv6h')
url="http://code.google.com/p/yubico-pam/"
license=('custom:BSD')
depends=('ykclient' 'ykpers')
source=(
	"http://yubico-pam.googlecode.com/files/$pkgname-$pkgver.tar.gz"
)
sha1sums=('63de5cc19aa89122709eede7f4f272a00945535d')
sha256sums=('0d06294f82c3286397fe52044d4b9b8d96045c3f9939fc7bbf0b45c4463e89c0')

build() {
	cd "$srcdir/$pkgname-$pkgver"

	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir/" install
	install -D -m0644 $srcdir/$pkgname-$pkgver/COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}
