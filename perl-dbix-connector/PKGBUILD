pkgname='perl-dbix-connector'
pkgver='0.46'
pkgrel='1'
pkgdesc="Fast, safe DBI connection and transaction management"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.6.2' 'perl-dbi>=1.605')
makedepends=('perl-test-mockmodule>=0.05')
url='http://search.cpan.org/dist/DBIx-Connector'
source=('http://search.cpan.org/CPAN/authors/id/D/DW/DWHEELER/DBIx-Connector-0.46.tar.gz')
md5sums=('2dc863bb70c6128c22763dc17a7530f5')
_distdir="${srcdir}/DBIx-Connector-0.46"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Build.PL
    /usr/bin/perl Build
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    /usr/bin/perl Build test
  )
}

package() {
  cd "$_distdir"
  /usr/bin/perl Build install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

