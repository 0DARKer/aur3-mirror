pkgname=ttf-st-andrew
pkgver=1
pkgrel=1
pkgdesc="Spray paint style font"
arch=('i686' 'x86_64')
url="http://keepwaiting.deviantart.com/art/St-Andrew-Font-119644176"
license=('GPL')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=('http://home.comcast.net/~synthead/mirror/St__Andrew_Font_by_KeepWaiting.zip')
md5sums=('610ffd9467df119ee3fb41ed0c3e4f95')

build() {
 install -Dm 644 $srcdir/StAndrew.ttf $pkgdir/usr/share/fonts/TTF/StAndrew.ttf
 install -Dm 644 "$srcdir/Non-Commercial Use.txt" "$pkgdir/usr/share/licenses/ttf-st-andrew/Non-Commercial Use.txt"
}
