pkgname=gnome-shell-theme-adwaita-slim
pkgver=20110816
pkgrel=1
pkgdesc="This is the default GNOME Shell theme with reduced icon size in Application view."
url="http://gnome3.org/"
license=('GPL')
arch=('any')
depends=('gnome-shell')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
            'gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=(gnome-shell.css
		theme.json)
sha256sums=('bfc7c369b9cea4b2ec2c9dd8acfe4e12dc582cdbf47068d40b618134c5e83f46'
			'f387d60d175c44e4a0dd793265ca0670bc073ca1b4f251dae5950c1a07ddeaa6')


package() {
  mkdir -p ${pkgdir}/usr/share/themes/Adwaita-Slim/gnome-shell
  cp ${srcdir}/* ${pkgdir}/usr/share/themes/Adwaita-Slim/gnome-shell
  chmod -R 755 ${pkgdir}/usr/share/themes/Adwaita-Slim
}

