# Maintainer: MCMic <come.bernigaud@laposte.net>

pkgname=virtual-magnifying-glass
pkgver=3.3.2
pkgrel=1
pkgdesc="A magnifier in freepascal. The command is 'vmg' after install."
arch=('any')
url="http://magnifier.sourceforge.net/"
license=('GPL2')
groups=()
depends=()
makedepends=('lazarus' 'fpc')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=('http://ovh.dl.sourceforge.net/project/magnifier/new%20source%20code/3.3.2/magnifier-3.3.2.zip')
noextract=()
md5sums=('16f8f495a8637032aca86f61377a9077') #generate with 'makepkg -g'

build() {
	cd $srcdir/magnifier-$pkgver
	./make.sh

	mkdir -p $pkgdir/usr/bin/
    mkdir -p $pkgdir/usr/share/

	./install.sh DESTDIR=$pkgdir
}

