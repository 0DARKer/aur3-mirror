 
# Maintainer: Jens Staal <staal1978@gmail.com>

pkgname=obase-git
pkgver=20120220
pkgrel=1
pkgdesc="OpenBSD userland ported to Linux"
arch=('i686' 'x86_64')
url="https://github.com/chneukirchen/obase/"
#url="http://www.openbsd.org/"
license=('BSD')
depends=('bmake' 'openssl')
makedepends=('git')

_gitroot=('git://github.com/chneukirchen/obase.git')
_gitname=('obase')

build() {
 cd $srcdir

msg "getting obase sources"
   if [ -d $_gitname ] ; then
    cd $_gitname && git pull $_gitroot
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

msg "setting up build directory"
  rm -rf $srcdir/build
  cp -ar $srcdir/$_gitname $srcdir/build
  cd $srcdir/build
  bmake
}

package() {
  mkdir -p $pkgdir/opt/obase
  export PREFIX=$pkgdir/opt/obase
  cd $srcdir/build
  bmake install
}
