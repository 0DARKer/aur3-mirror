# PKGBUILD generated by pacpan
pkgname=perl-moosex-types-path-class
_realname=MooseX-Types-Path-Class
pkgver=0.05
pkgrel=1
pkgdesc="'A Path::Class type library for Moose'"
arch=(i686 x86_64)
license=('perl')
url="http://search.cpan.org/~thepler/MooseX-Types-Path-Class"
options=(!emptydirs)

depends=('perl-moosex-types' 'perl-class-mop' 'perl-path-class' 'perl-moose')
makedepends=('perl')

#provides=('MooseX-Types-Path-Class')
provides=('moosex-types-path-class=0.05' 'MooseX::Types::Path::Class=0.05' 'perl-moosex-types-path-class=0.05')

source=(http://search.cpan.org/CPAN/authors/id/T/TH/THEPLER/MooseX-Types-Path-Class-0.05.tar.gz)
md5sums=('79a0d19fe8b4547b232605645c75aaad')

build() {
  _expected_dir="${srcdir}/${_realname}-${pkgver}"
  if [ -d "$_expected_dir" ]; then
    cd "$_expected_dir"
  else
    _expected_dir="${srcdir}/$(bsdtar -t -f $(basename $source) | head -n1)"
    if [ -d "$_expected_dir" ]; then
      cd "$_expected_dir"
    else
      _makefile=$(find $srcdir -iname Makefile.PL)
      if [ ! -z "$_makefile" ]; then
        _expected_dir=$(dirname $_makefile)
        if [ -d "$_expected_dir" ]; then
          cd "$_expected_dir"
        else
          echo "[1;31mERROR[0m unable to detect source directory"
          echo "[1;34m-->[0m this is often due to CPAN's lack of standard naming conventions"
          echo "[1;34m-->[0m it may be possible to fix this by adjusting the build function in the PKGBUILD"
        fi
      fi
    fi
  fi
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

