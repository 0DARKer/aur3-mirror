pkgname=ffpoth
pkgver=0.1202
pkgrel=1
pkgdesc="ffmpeg poly thumbnail - a movie thumbnailer"
arch=('i686' 'x86_64')
license=('GPL')
depends=('ffmpeg>=20120110')
url="http://code.google.com/p/ffpoth/"
source=("http://ffpoth.googlecode.com/files/ffpoth-${pkgver}.tar.gz")
md5sums=('7d50fafe81ba43fca911b8efa522a048')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}/
  make || return 1
  mkdir -p ${pkgdir}/usr/bin
  install ${pkgname} ${pkgdir}/usr/bin/
  mkdir -p ${pkgdir}/usr/share/man/man1/
  install ${pkgname}.1 ${pkgdir}/usr/share/man/man1/
}
