#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=synclinks
pkgver=2012.6.27
pkgrel=1
pkgdesc='A tool that synchronizes hierarchies of symlinks.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/synclinks"
source=(
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.6.27.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.6.27.tar.xz.sig
)
sha512sums=(
  60e1ceb80a0103f0dd4f43ae5c9dbab1b0da8a9966c6ce2aeb9480e9ccc330c9bbd08f0b22fe99bb31c97ff158f0bed947a6e49631fac698f888e4c5fa765095
  856befcd0d0f8aab3fae9d6eecd7ae8509a491526f61f8ba20e60c9c585c5ce78f5be57efa3813f5084e85245a6e88e782ca331eee79e591b30cbc9b58f22434
)
md5sums=(
  387d80c5ae272d1d25e2f5fb1ed0aa2f
  84b34886604551e7972222bd4f126944
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
}

