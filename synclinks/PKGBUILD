pkgname=synclinks
pkgver=2012.3.28.2
pkgrel=1
pkgdesc='A tool that synchronizes hierarchies of symlinks.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/synclinks"
source=(
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.3.28.2.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.3.28.2.tar.xz.sig
)
sha512sums=(
  6ee15772711770a7cf04fbdcc30d5bcc60128dff465839fdaab5df68b8c8d0c8ce1900b885f9c34b179ea252d720458ed13bcc5cf2494c6b030b4bcb93aa1454
  b353bfb1a03cd279300ae7fc9418fcbf634304473621c0cfcf0b9a1077a2ef575702bad12adc57166f5caac9ad935f914bab96de03d3d91a338782e116cffdda
)
md5sums=(
  ade789c40c53d666d6ccd53144bc4800
  6abb7816cf111639c42aa62cc3db65f3
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
}

