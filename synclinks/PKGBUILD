#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=synclinks
pkgver=2012.4
pkgrel=1
pkgdesc='A tool that synchronizes hierarchies of symlinks.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/synclinks"
source=(
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.4.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.4.tar.xz.sig
)
sha512sums=(
  f48799ca571a21cb690c34e44cf3a819879814e18c893b66e5bb5b294666ac92edb4b89ae12e189e838c98028d1692455b645d6aa31781b3f55f4933c0612689
  84f3d55efd1391c3cc4eb97afc096ff39de309990a592af329927a084461f5e32532f0c58b07bdef1c6bc3e7e55101e2c33f3292b311a24f393212f0155e87d7
)
md5sums=(
  9d99526a8d2af6be9d1f52f1b003f931
  bff5f01cffd5c3fd87467b246c8bdcad
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
}

