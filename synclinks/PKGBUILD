pkgname=synclinks
pkgver=2012.3.12
pkgrel=1
pkgdesc='A tool that synchronizes hierarchies of symlinks.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/synclinks"
source=(
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.3.12.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.3.12.tar.xz.sig
)
sha512sums=(
  61ea18487b04253f5359e21443fcf8e32a8edb5dcb3691a7879a21e7c07d67e9ad74212190039c0ed5ae118a104020e8247eb3e1d9b08e31c8db346fda2678d7
  854ee104d589eed896843d706b0ebdfbf38ddfde314450065c4283170bb1c079bdd83da6316e0b624c54ee0804cba1ebf83299c52ce7f85359d899a026a97a80
)
md5sums=(
  68167e5c9c5140b4c395111eca398ede
  59bae5bac8f4e5fa546d26183a627800
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
}

