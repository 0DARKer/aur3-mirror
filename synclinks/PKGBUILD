source=(
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.03.06.85850.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.03.06.85850.tar.xz.sig
)
