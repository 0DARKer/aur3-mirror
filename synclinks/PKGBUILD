pkgname=synclinks
pkgver=2012.5
pkgrel=1
pkgdesc='A tool that synchronizes hierarchies of symlinks.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/synclinks"
source=(
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.5.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.5.tar.xz.sig
)
sha512sums=(
