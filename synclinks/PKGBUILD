pkgname=synclinks
pkgver=2012.12.24
pkgrel=1
pkgdesc='A tool that synchronizes hierarchies of symlinks.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/synclinks"
source=(
  http://xyne.archlinux.ca/projects/synclinks/src/synclinks-2012.12.24.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/src/synclinks-2012.12.24.tar.xz.sig
)
sha512sums=(
  11885e7238fe2770a4f35df933a9cc08a0d610e565b03e037e0faebf2f452c9ca441ec9456ca5fb7396efee76377d2ee74517f14978e008aecdaf25ca0b7c37e
  add9222f1449691ccd9d10e69cd3f626a68c7a95824cbe7f99bbcd647896ecc1bef97ca287caa4e13bb7f630a439607da40a12a89e621acd0c9628a5030fcc80
)
md5sums=(
  97dda7e7cf4b8178901cc72a6fa9bb50
  6ad5e792f1871be73141434b827a496f
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
}

