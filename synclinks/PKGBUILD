pkgname=synclinks
pkgver=2012.3.19
pkgrel=1
pkgdesc='A tool that synchronizes hierarchies of symlinks.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/synclinks"
source=(
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.3.19.tar.xz
  http://xyne.archlinux.ca/projects/synclinks/archives/synclinks-2012.3.19.tar.xz.sig
)
sha512sums=(
  e3af35a8a03422ca9de9f0e21a8f852366275f383c4d6c2a2c788dca3786b28b156b83533f20be95965440ba2bca36cbe7c57343f4917d9f97b7db3e51e1d7ef
  d35a2c656fe773e798402e645e4615fb9cab8ba08c84546a5e6ba4629aebb33aee0df1f346ec64ad87aaa90a907d0c587f0ec387dbb7ff1de79a59b044e17460
)
md5sums=(
  e9e49e17311895cec595bdba514ec2c3
  ef5eaddf82700848a911ddfa5b51fcc3
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
}

