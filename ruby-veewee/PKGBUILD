# Maintainer: Bertrand Bonnefoy-Claudet <bertrandbc@gmail.com>

_gemname=veewee
pkgname=ruby-$_gemname
pkgver=0.3.12
pkgrel=2
pkgdesc="A tool for building custom Vagrant base boxes and virtual machine images."
arch=(any)
url="https://github.com/jedi4ever/veewee"
license=('MIT')
depends=('ruby' 'ruby-ansi-1.3' 'ruby-childprocess'
         'ruby-fission>=0.4.0' 'ruby-fog>=1.8' 'ruby-grit' 'ruby-highline'
         'ruby-i18n' 'ruby-net-ssh>=2.2.0' 'ruby-os>=0.9.6'
         'ruby-popen4>=0.1.2' 'ruby-progressbar' 'ruby-rspec>=2.5'
         'ruby-vnc>=1.0.0' 'ruby-thor>=0.15')
makedepends=('rubygems')
provides=('veewee')
conflicts=('veewee')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('f8a88863be0a6c694952e95554a17742')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" \
    "$_gemname-$pkgver.gem"
}

