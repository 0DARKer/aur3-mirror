pkgname=hostname
pkgver=3.09
pkgrel=1
pkgdesc="Utility to set/show the host name or domain name"
arch=('i686' 'x86_64')
url="http://packages.qa.debian.org/h/hostname.html"
license=('GPL2')
depends=('glibc')
source=("http://ftp.de.debian.org/debian/pool/main/h/hostname/hostname_$pkgver.tar.gz"
        'rh.patch')
sha256sums=('c13000037a35fb573e084288a4163964457d48680d31d290190ba42d58de946b'
            '285a1050cc9b6ad8b977edb7586d98f3b8b3b546a232aa44f92f9c15dece7002')

build() {
  cd "$srcdir/$pkgname"
  patch -Np1 -i "$srcdir/rh.patch"
  sed -i "s|-lnsl|\$(LDFLAGS) -lnsl|g" Makefile
  make
}

package() {
  cd "$srcdir/$pkgname"
  make BASEDIR="$pkgdir" install
  mkdir -m 0755 -p  "$pkgdir/usr/bin"
  ln -sf /bin/hostname "$pkgdir/usr/bin/hostname"
}

# vim:set ts=2 sw=2 et:
