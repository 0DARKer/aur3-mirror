pkgname=hostname
pkgver=3.12
pkgrel=1
pkgdesc="Utility to set/show the host name or domain name"
arch=('i686' 'x86_64')
url="http://packages.qa.debian.org/h/hostname.html"
license=('GPL2')
depends=('glibc')
options=('!emptydirs')
source=("http://ftp.de.debian.org/debian/pool/main/h/$pkgname/hostname_$pkgver.tar.gz")
md5sums=('f7965b63320f66cc1cbd5fa031d1bcd7')
sha256sums=('930dcb23f168920ea22c1b4061a65a28dfd1434d0ea36b8b2cd207afc00e0368')

build() {
  cd "$srcdir/$pkgname"
  make CC="${CC:-gcc}"
}

package() {
  cd "$srcdir/$pkgname"
  mkdir -m 0755 -p  "$pkgdir/usr/bin" "$pkgdir/usr/share/man/fr/man1"
  make BASEDIR="$pkgdir" install
  ln -sf /bin/hostname "$pkgdir/usr/bin/hostname"
}

# vim:set ts=2 sw=2 et:
