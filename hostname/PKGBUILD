pkgname=hostname
pkgver=3.13
pkgrel=1
pkgdesc="Utility to set/show the host name or domain name"
arch=('i686' 'x86_64')
url="http://packages.qa.debian.org/h/hostname.html"
license=('GPL2')
depends=('glibc')
options=('!emptydirs')
source=("http://ftp.de.debian.org/debian/pool/main/h/$pkgname/hostname_$pkgver.tar.gz")
md5sums=('ff2e7b7534999dcbaa0d420991ce353a')
sha256sums=('7018e8985f855fe06055fdf436e78d51837822229596a2d7c46e86851dd88eee')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make CC="${CC:-gcc}"
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make BASEDIR="$pkgdir" install
  mv "$pkgdir/bin" "$pkgdir/usr/bin"
}
