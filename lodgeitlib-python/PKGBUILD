pkgname=lodgeitlib-python
pkgver=0.1.1
pkgrel=1
pkgdesc="A client/library to the lodgeit pastebin service"
arch=('any')
url="http://lunaryorn.de/code/lodgeitlib.html"
source=(http://pypi.python.org/packages/source/l/lodgeitlib/lodgeitlib-$pkgver.tar.gz)
license=('MIT')
md5sums=('9ae1e4255f6c9e5ba9465f6f40abf595')
depends=('python' 'pygments' 'argparse')
options=('!emptydirs')

build() {
  cd $srcdir/lodgeitlib-$pkgver
  python setup.py install --root=$pkgdir/

  
   install -D -m644 $srcdir/lodgeitlib-$pkgver/COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}


