# Contributor: Hauke Wesselmann <hauke@h-dawg.de>

pkgname=hypermail
pkgver=2.1.8
pkgrel=2
pkgdesc="Hypermail is a program that takes a file of mail messages in UNIX mailbox format and generates a set of cross-referenced HTML documents"
arch=(i686 x86_64)
source=(http://www.hypermail.org/dist/$pkgname-$pkgver.tar.gz)
md5sums=('bacd95589f2f3ca426631461fd9237dd')
url="http://www.hypermail.org"
depends=('pcre' 'glibc' 'gdbm')
license=('GPL')
build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --without-htmldir
  make || return 1
  make prefix=$startdir/pkg/usr install
}
