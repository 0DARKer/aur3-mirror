pkgname=mixcloud-dl
pkgver=1.0.1
pkgrel=1
pkgdesc="A small command-line program to download music from mixcloud.com"
arch=('any')
url="https://github.com/jordidg/mixcloud-dl"
license=('GPL')
depends=('aria2' 'mp3info' 'python')
source=("https://github.com/jordidg/mixcloud-dl/raw/${pkgver}/mixcloud-dl.py")
md5sums=('601ddcedb2ea83de6d57ef6446bf1a9f')

package() {
  install -D "${srcdir}"/mixcloud-dl.py "${pkgdir}"/usr/bin/mixcloud-dl
} 
