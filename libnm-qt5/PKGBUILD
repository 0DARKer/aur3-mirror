pkgname=libnm-qt5
pkgver=5.0.90
_plasmaver=4.98.0
pkgrel=1
pkgdesc='Qt-only wrapper for NetworkManager DBus API'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/extragear/libs/libnm-qt'
license=('LGPL')
depends=('networkmanager' 'qt5-base')
makedepends=('extra-cmake-modules')
source=("http://download.kde.org/unstable/plasma/$_plasmaver/src/libnm-qt-$pkgver.tar.xz")
md5sums=('1642a8d106429535bf7c5e2d1a7e7d2f')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../libnm-qt-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
