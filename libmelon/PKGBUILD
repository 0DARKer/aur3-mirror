# Maintainer: Alexandre Bique <bique.alexandre@gmail.com>

pkgname=libmelon
pkgver=0.8.3
pkgrel=1
pkgdesc="M:N fiber implementation, with transparent IO reactor and timeouts, POSIX like APIs"
arch=('i686' 'x86_64')
url="http://github.com/babali/melon"
license=('LGPL3')
makedepends=('cmake>=2.8')
depends=()
options=()
source=("https://github.com/babali/melon/tarball/${pkgver}")
sha256sums=('60c2bcb2e0176d4456f4641086c65fa65cf1f902f349e5aeca4cca97d23b3308')

build() {
  cd ${srcdir}/babali-melon-e0ff949 &&
  mkdir build &&
  cd build &&
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. &&
  make
}

package() {
  cd ${srcdir}/babali-melon-e0ff949/build &&
  DESTDIR=${pkgdir} make install
}
