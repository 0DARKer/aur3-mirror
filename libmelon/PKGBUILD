# Maintainer: Alexandre Bique <bique.alexandre@gmail.com>

pkgname=libmelon
pkgver=0.6.0
pkgrel=3
pkgdesc="M:N fiber implementation, with transparent IO reactor and timeouts, POSIX like APIs"
arch=('i686' 'x86_64')
url="http://github.com/babali/melon"
license=('LGPL3')
makedepends=('cmake>=2.8')
depends=()
options=()
source=("https://github.com/babali/melon/tarball/${pkgver}")
sha256sums=('83e1ac9eecff937db975a22fbb7cfd36f20abf8b4cc5f6e7e34dd72cea4879e8')

build() {
  cd ${srcdir}/babali-melon-7b12a43 &&
  mkdir build &&
  cd build &&
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. &&
  make
}

package() {
  cd ${srcdir}/babali-melon-7b12a43/build &&
  DESTDIR=${pkgdir} make install
}
