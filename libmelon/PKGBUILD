# Maintainer: Alexandre Bique <bique.alexandre@gmail.com>

pkgname=libmelon
pkgver=0.9.0
pkgrel=1
pkgdesc="M:N fiber implementation, with transparent IO reactor and timeouts, POSIX like APIs"
arch=('i686' 'x86_64')
url="http://github.com/babali/melon"
license=('LGPL3')
makedepends=('cmake>=2.8')
depends=()
options=()
source=("https://github.com/babali/melon/tarball/${pkgver}")
sha256sums=('dd578e391b8deeb434fac593314c05738d70a0e2baeb5c0f6b5e3342323daf6d')

build() {
  cd ${srcdir}/babali-melon-f9729b9 &&
  mkdir build &&
  cd build &&
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. &&
  make
}

package() {
  cd ${srcdir}/babali-melon-f9729b9/build &&
  DESTDIR=${pkgdir} make install
}
