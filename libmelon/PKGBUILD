# Maintainer: Alexandre Bique <bique.alexandre@gmail.com>

pkgname=libmelon
pkgver=0.8.0
pkgrel=1
pkgdesc="M:N fiber implementation, with transparent IO reactor and timeouts, POSIX like APIs"
arch=('i686' 'x86_64')
url="http://github.com/babali/melon"
license=('LGPL3')
makedepends=('cmake>=2.8')
depends=()
options=()
source=("https://github.com/babali/melon/tarball/${pkgver}")
sha256sums=('5ac4a5d0275dc1155ea7429aed1ac316e6beffb881ff6f6ea6f9f9f4f931b84d')

build() {
  cd ${srcdir}/babali-melon-e6705ed &&
  mkdir build &&
  cd build &&
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. &&
  make
}

package() {
  cd ${srcdir}/babali-melon-e6705ed/build &&
  DESTDIR=${pkgdir} make install
}
