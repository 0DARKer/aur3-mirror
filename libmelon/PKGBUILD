# Maintainer: Alexandre Bique <bique.alexandre@gmail.com>

pkgname=libmelon
pkgver=0.7.0
pkgrel=1
pkgdesc="M:N fiber implementation, with transparent IO reactor and timeouts, POSIX like APIs"
arch=('i686' 'x86_64')
url="http://github.com/babali/melon"
license=('LGPL3')
makedepends=('cmake>=2.8')
depends=()
options=()
source=("https://github.com/babali/melon/tarball/${pkgver}")
sha256sums=('2df000af284d7710d678216d12d273dd7251073e823e5121217b3064c9d2c47e')

build() {
  cd ${srcdir}/babali-melon-bbf67d2 &&
  mkdir build &&
  cd build &&
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. &&
  make
}

package() {
  cd ${srcdir}/babali-melon-bbf67d2/build &&
  DESTDIR=${pkgdir} make install
}
