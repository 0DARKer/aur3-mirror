pkgname=ttf-inconsolata-hellenic
pkgver=1.17
pkgrel=1
pkgdesc="Monospace font for pretty code listings and for the terminal (augmented with Hellenic glyphs)"
arch=("any")
url="http://www.cosmix.org/software/"
license=("custom:OFL")
depends=("fontconfig" "xorg-font-utils")
makedepends=("unzip")
source=("${url}files/InconsolataHellenic.zip")
md5sums=('edc78c6a745f9e81810aa4ef25057812')
install=${pkgname}.install
         
package() {
    install -Dm644 $srcdir/InconsolataHellenic.otf $pkgdir/usr/share/fonts/TTF/ttf-inconsolata-hellenic.otf
}
