# Maintainer: XZS <d.f.fischer at web dot de>
pkgname=thunderbird-theme-deepdark
pkgver=9.4.1
pkgrel=1
pkgdesc='Smooth dark theme for Thunderbird'
url='https://addons.mozilla.org/de/thunderbird/addon/tt-deepdark/'
arch=('any')
license=('custom:noncommercial')
depends=('thunderbird')
source=("https://addons.mozilla.org/thunderbird/downloads/file/268410/tt_deepdark-${pkgver}-tb-linux.xpi")
md5sums=('930e10a18dfd719f4fc2d4633d08bfde')

build() {
  cd "$srcdir"
  [[ -d $pkgname-extract ]] || mkdir $pkgname-extract
  unzip -q -d $pkgname-extract tt_deepdark-${pkgver}-tb-linux.xpi
}

package() {
  cd "$srcdir/$pkgname-extract"
  local emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf)
  local dstdir=$pkgdir/usr/lib/thunderbird/extensions/$emid
  install -d $dstdir
  mv * $dstdir
}
