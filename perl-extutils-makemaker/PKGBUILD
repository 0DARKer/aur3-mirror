# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-extutils-makemaker'
pkgver='6.56'
pkgrel='1'
pkgdesc="Writes Makefiles for extensions"
arch=('any')
url='http://search.cpan.org/dist/ExtUtils-MakeMaker'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSCHWERN/ExtUtils-MakeMaker-6.56.tar.gz')
md5sums=('af7e032a1e845e4decf7672929510b98')

build() {
  DIST_DIR="${srcdir}/ExtUtils-MakeMaker-6.56"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

