# Maintainer: Padfoot <padfoot at exemail dot com dot au>

pkgname=lightdm-gtk-greeter-osk
srcname=lightdm-gtk-greeter
pkgver=1.1.6
pkgrel=2
pkgdesc="GTK+ greeter for LightDM with on-screen keyboard support"
arch=('i686'
      'x86_64')
url="https://launchpad.net/lightdm-gtk-greeter"
license=('GPL3'
         'LGPL3')
depends=('lightdm>=1.2.0'
         'gtk3')
makedepends=('gtk-doc'
             'gnome-common'
             'gnome-doc-utils'
             'gobject-introspection'
             'intltool'
             'patch')
optdepends=('xorg-server-xephyr: run lightdm in test mode')
provides=('lightdm-gtk-greeter')
conflicts=('lightdm-gtk-greeter'
           'lightdm-gtk-greeter-bzr')
backup=('etc/lightdm/lightdm-gtk-greeter.conf')
install='lightdm-gtk-greeter.install'
source=("https://launchpad.net/$srcname/1.2/$pkgver/+download/$srcname-$pkgver.tar.gz"
        "lightdm-gtk-greeter.conf"
        "lightdm-gtk-greeter.patch")
md5sums=('f9487ece204533000fe01ce83cfdc8a8'
         '17c8f6ae0ff350fca16b9162e9735182'
         '463ce78cc59eb2df18a4856ee789889d')

build() {
  cd "$srcdir/$srcname-$pkgver"

  patch -p1 -i $srcdir/lightdm-gtk-greeter.patch
  
  ./autogen.sh --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib/lightdm \
    --disable-static
    
  make
}

package() {
  cd "$srcdir/$srcname-$pkgver"
  
  make DESTDIR="${pkgdir}" install
  
  cp ../lightdm-gtk-greeter.conf $pkgdir/etc/lightdm
}
