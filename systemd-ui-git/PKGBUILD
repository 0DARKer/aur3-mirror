# Maintainer: Dave Reisner <dreisner@archlinux.org>

pkgname=systemd-ui-git
pkgver=v2.1.g63236f5
pkgrel=1
pkgdesc="Session and startup manager -- GUI components"
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/systemd"
license=('GPL2')
depends=('glib2' 'gtk3' 'libgee' 'libnotify')
makedepends=('git' 'vala' 'docbook-xsl' 'libxslt')
provides=('systemd-ui')
conflicts=('systemd-ui')
source=("git://anongit.freedesktop.org/systemd/systemd-ui.git")
md5sums=('SKIP')
_gitname="systemd-ui"

pkgver(){
	cd ${srcdir}/${_gitname}
	git describe --always | sed 's/-/./g'
}

build() {
	cd ${srcdir}/${_gitname}
  autoreconf -f -i -s
  ./configure

  make
}

package() {
	cd ${srcdir}/${_gitname}
	make DESTDIR="$pkgdir" install
}
