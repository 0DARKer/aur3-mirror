#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=makerepo
pkgver=2010.09.16.1
pkgrel=1
pkgdesc="automatically build and update a repo"
depends=('perl' 'perl-xyne-common' 'perl-xyne-arch')
optdepends=('pacpan: to package CPAN modules' 'pbget: for building packages from core/extra/community and the AUR')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('a1b645c50b7b54d2d64a1b4ae86a3a42')

build() {
  install -D -m755 $srcdir/$pkgname/$pkgname $pkgdir/usr/bin/${pkgname}
  install -D -m644 $srcdir/$pkgname/man/$pkgname.1.gz $pkgdir/usr/share/man/man1/$pkgname.1.gz
}
# vim: set ts=2 sw=2 et:
