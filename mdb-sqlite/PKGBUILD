# Contributer: N30N <archlinux@alunamation.com>

pkgname="mdb-sqlite"
pkgver=1.0.2
pkgrel=1
pkgdesc="Microsoft Access MDB to SQLite converter"
url="http://code.google.com/p/mdb-sqlite/"
license="BSD"
arch=("i686" "x86_64")
depends=("java-runtime")
makedepends=("apache-ant")
source=("http://${pkgname}.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2" "mdb-sqlite.sh")
md5sums=("a446bc43e2796a54a202c4bf6a9a7cfc" "6762930133670c64a48f4d6f8e10c91f")

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	ant dist || return 1
	install -D -m755 ${srcdir}/mdb-sqlite.sh ${pkgdir}/usr/bin/mdb-sqlite
	install -D -m644 dist/mdb-sqlite.jar ${pkgdir}/usr/share/java/mdb-sqlite.jar
}

# vim: set noet ff=unix
