# GNUnet-Qt: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>

realname=gnunet
pkgname=${realname}-qt
pkgver=0.8.1a
pkgrel=1
pkgdesc="A Qt interface for accessing GNUnet"
arch=("i686" "x86_64")
url="http://www.${realname}.org/"
license=("GPL")
depends=("${realname}>=${pkgver}" "qt" "libnotify" "adns")
options=(!emptydirs)
source=(http://www.${realname}.org/download/${pkgname}-${pkgver}.tar.gz)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	# Build
	./configure --prefix=/usr --with-extractor --with-${realname} || return 1
	make || return 1
	make DESTDIR=${pkgdir} install || return 1

	# Desktop
	install -D ${startdir}/extra/${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
}

sha1sums=('5de1a87230d1c588b636132fedd79e3e184e867e')
