pkgname=virtualenv3
pkgver=1.3.4.2
pkgrel=1
pkgdesc="A version of virtualenv for Python 3, using the new Distribute module from Tarek Ziad√©."
arch=('any')
url="http://bitbucket.org/brandon/virtualenv3/"
license=('custom')
depends=('python3')
source=("http://pypi.python.org/packages/source/v/${pkgname}/${pkgname}-${pkgver}.tar.gz")
noextract=()
md5sums=('f41af6aad3afeebc159b0210631dcc03')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  python3 setup.py install \
    --prefix=/usr \
    --root=${pkgdir} \
    || return 1

  install -m644 -D docs/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

# vim:set ts=2 sw=2 et:
