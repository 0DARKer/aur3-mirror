# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=kbibtex-devel
_appname=kbibtex
pkgver=0.5beta2
_appver=0.5
pkgrel=1
pkgdesc="A BibTeX editor for KDE. Unstable version"
arch=('i686' 'x86_64')
url='http://home.gna.org/kbibtex/'
license=('GPL')
conflicts=('kbibtex')
provides=('kbibtex')
depends=('kdebase-runtime' 'poppler-qt')
makedepends=('cmake' 'automoc4')
install=${pkgname}.install
source=("http://download.gna.org/$_appname/$_appver/$_appname-$_appver-beta2.tar.bz2" $pkgname.install)
md5sums=('d2f52bb42edbf8f31df4a5685dacaca4'
         'dc1079cf1f785631621386f5dd0948dc')

build() {
  cd $_appname-$_appver-beta2
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd $_appname-$_appver-beta2/build
  make DESTDIR=$pkgdir install
}
