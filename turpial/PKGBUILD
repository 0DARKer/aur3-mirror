# Maintainer: Miguel Useche <migueluseche(dot)skatox.com>
pkgname=turpial
pkgver=1.5.0
pkgrel=3
pkgdesc="A multi-interface Twitter client written in Python."
arch=(any)
url="http://turpial.org.ve/"
license=('GPL3')
depends=('python2' 'python2-distribute' 'python-simplejson>=1.9.2' 'pygtk>=2.12' 'python-notify>=0.1.1' 'notification-daemon' 'gstreamer0.10-python' 'python-babel>=0.9.1' 'pywebkitgtk')
optdepends=('python2-gtkspell>=2.25.3' 'gnome-spell' 'aspell')
source=(http://turpial.org.ve/files/sources/stable/$pkgname-$pkgver.tar.gz)
md5sums=('e220f74db206203674e51cc56cf8b487')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1
} 
 