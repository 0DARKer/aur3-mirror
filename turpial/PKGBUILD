pkgname=turpial
pkgver=1.3.4
pkgrel=4
pkgdesc="A multi-interface Twitter client written in Python."
arch=(any)
url="http://turpial.org.ve/"
license=('GPL3')
depends=('python2' 'python-simplejson' 'pygtk' 'python-notify' 'notification-daemon' 'python-pygame' 'python-babel' 'pywebkitgtk')
optdepends=('gtkspell' 'gnome-spell' 'aspell')
makedepends=('setuptools')
source=(http://turpial.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('72c755e4e7a3ae3c6914e5fab784d63e')



build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1
} 
 
