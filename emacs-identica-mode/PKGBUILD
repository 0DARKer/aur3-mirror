# Contributor: Frikilinux <frikilinux@frikilinux.com.ar>
# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=emacs-identica-mode
pkgver=1.0
pkgrel=1
pkgdesc="GNU Emacs mode for laconi.ca microblogging service."
arch=('any')
url="http://blog.nethazard.net/identica-mode-for-emacs/"
license=('GPL')
depends=('emacs' 'curl' 'wget')
install=identica-mode.install
source=("$pkgname-$pkgver.tar.gz::http://nethazard.net/identica-mode.tar.gz")
md5sums=('77147dfe173faa349de106668fda25be')

build() {
  cd $srcdir/identica-mode
  emacs -batch -q -f batch-byte-compile identica-mode.el || return 1
}
package() {
  install -D -m644 $srcdir/identica-mode/identica-mode.el \
    $pkgdir/usr/share/emacs/site-lisp/identica-mode.el || return 1
  install -D -m644 $srcdir/identica-mode/identica-mode.elc \
    $pkgdir/usr/share/emacs/site-lisp/identica-mode.elc || return 1
}

