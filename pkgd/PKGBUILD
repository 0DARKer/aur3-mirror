#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pkgd
pkgver=2010.08.26.1
pkgrel=1
pkgdesc="A daemon for sharing pkg caches over a LAN."
depends=('perl' 'perl-xyne-arch')
backup=(etc/pkgd.conf)
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('acc9f8b24c321d0360e8fb25882ecf67')
install=${pkgname}.install

build() {
  cd $srcdir/$pkgname
  install -D -m755 $pkgname $pkgdir/usr/bin/${pkgname}
  install -D -m755 ${pkgname}d $pkgdir/etc/rc.d/${pkgname}d
  install -D -m644 ${pkgname}.conf $pkgdir/etc/${pkgname}.conf
  install -D -m644 man/$pkgname.1.gz $pkgdir/usr/share/man/man1/$pkgname.1.gz
}
# vim: set ts=2 sw=2 et:
