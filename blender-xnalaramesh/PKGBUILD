pkgname=blender-xnalaramesh
pkgver=1.0
pkgrel=1
pkgdesc="XNALara/XPS import/export for Blender"
arch=(any)
url="http://johnzero7.deviantart.com/journal/Blender-2-7-XPS-Tools-475948475"
license=("public domain")
source=("https://dl.dropboxusercontent.com/u/62535551/XNALaraMesh(1.0).zip")
depends=("blender>=14:2.71")
makedepends=(dos2unix python unzip)
sha1sums=('e996927a2dbe5dfe99a7bc476a0f24bb1da32f47')

_blender_version=`blender -v | grep "Blender\s" | awk '{print $2}'`

prepare() {
	cd "$srcdir/XNALaraMesh"
	rm -r test
	find . -type f -exec dos2unix {} \;
}
package() {
	cd "$srcdir/XNALaraMesh"
	find . -name '*.py' -exec install -Dm755 {} "$pkgdir/usr/share/blender/${_blender_version}/scripts/addons/XNALaraMesh/"{} \;
	python -m compileall "$pkgdir/usr/share/blender"
}
