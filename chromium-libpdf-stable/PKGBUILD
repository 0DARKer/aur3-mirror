# Maintainer: ava1ar (mail(dot)avatar(at)gmail(dot)com)

pkgname=chromium-libpdf-stable
pkgver=26.0.1410.63
pkgrel=1
_verbld=${pkgver}-192696
_channel='stable'
arch=('i686' 'x86_64')
_arch="$CARCH"
[ "$CARCH" = 'i686' ] && _arch='i386'
pkgdesc="Google Chrome's PDF plugin for Chromium (stable version)"
url="http://www.google.com/chrome"
license=('custom:chrome')
depends=('chromium')
source=(https://dl.google.com/linux/chrome/rpm/stable/${_arch}/google-chrome-${_channel}-${_verbld}.${_arch}.rpm 
license.html::http://www.google.com/chrome/intl/en/eula_text.html)
sha1sums=('295df87c2983b425258d33fc44e97b92afc352cc' 'cdda47faa791d56089f92854957070b1ec135c2e')
[ "$CARCH" = 'i686' ] && sha1sums[0]='7a2c8caa4277611357f1f506e4a0dc083e947003'

package() {
    install -d "${pkgdir}/usr/lib/chromium"
    install -m644 opt/google/chrome/libpdf.so "${pkgdir}/usr/lib/chromium"
    install -Dm644 "$srcdir/license.html" "$pkgdir/usr/share/licenses/$pkgname/license.html"
}
