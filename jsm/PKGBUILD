pkgname=jsm
pkgver=0.1
pkgrel=1
pkgdesc="Simple script to send email, without requiring a complex SMTP server"
arch=('i686' 'x86_64')
url="http://houbysoft.com/"
license=('GPL3')
depends=('python2' 'python2-pydns')
source=('https://github.com/houbysoft/short/raw/6ebf30e0fd23b78acf3921301fe7929125ed5b85/jsm.py')
md5sums=('7a120450d81088184030de26094fe82e')

build() {
  install -D jsm.py "$pkgdir/usr/bin/$pkgname"
}

