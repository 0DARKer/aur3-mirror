# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>

pkgname=vlc-nogui
pkgver=1.1.7
pkgrel=1
pkgdesc="A multi-platform MPEG, VCD/DVD, and DivX player"
arch=('i686' 'x86_64')
url="http://www.videolan.org/vlc/"
license=('GPL')
depends=('a52dec' 'faad2' 'fluidsynth' 'libmtp' 'libdvbpsi' 'lirc-utils'
         'libdca' 'libproxy' 'sdl_image' 'libdvdnav' 
         'lua' 'libv4l' 'libcddb' 'smbclient' 'libmatroska' 'zvbi' 
         'taglib' 'sysfsutils' 'libmpcdec' 'ffmpeg'
         'libshout' 'libmad' 'fribidi' 'libmpeg2' 'libmodplug'
         'avahi' 'ttf-freefont' 'libxv' 'libass' 'xdg-utils' 'libxpm' 'live-media')
makedepends=('pkgconfig')
optdepends=('libnotify')
options=('!libtool')
source=(http://downloads.videolan.org/pub/videolan/vlc/${pkgver}/vlc-${pkgver}.tar.bz2)
md5sums=('932ce1fa4afa54b56ac0ccc0655667b6')

build() {
  cd ${srcdir}/vlc-${pkgver}
  ./configure --prefix=/usr \
              --enable-jack \
              --disable-rpath \
              --disable-qt4 \
              --enable-faad \
              --enable-alsa \
              --disable-skins2 \
              --enable-v4l \
              --enable-theora \
              --enable-flac \
              --enable-snapshot \
              --enable-udev \
              --enable-ogg \
              --enable-shout \
              --enable-lirc \
              --enable-pvr \
              --program-suffix= \
              --enable-realrtsp || return 1
  CFLAGS="-fPIC"
  make || return 1
  make DESTDIR=${pkgdir}/ install || return 1
  rm -rf ${pkgdir}/usr/share/applications
  rm -rf ${pkgdir}/usr/share/kde4
  rm -rf ${pkgdir}/usr/share/icons
  rm ${pkgdir}/usr/share/vlc/vlc.ico
}
