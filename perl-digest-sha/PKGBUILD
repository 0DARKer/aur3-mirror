pkgname='perl-digest-sha'
pkgver='5.48'
pkgrel='1'
pkgdesc="Perl extension for SHA-1/224/256/384/512"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Digest-SHA'
source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSHELOR/Digest-SHA-5.48.tar.gz')
md5sums=('a7ec2c09a58a68dbf419aa191567d75e')

build() {
  _DISTDIR="${srcdir}/Digest-SHA-5.48"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
