# Contributor: Michal Bozon <bozonm@vscht.cz>
pkgname=cinchi-beta
pkgver=1.02beta
pkgrel=1
pkgdesc="Official InChI (IUPAC International Chemical Identifier) utility, beta version"
arch=('i686')
url="http://www.iupac.org/inchi/download/index.html"
license=('LGPL')
makedepends=('gcc' 'make')
privides=('cinchi')
conflicts=('cinchi')
source=("http://www.iupac.org/inchi/download/inchi102b.zip")
md5sums=('8cf52a73c369bda28de95f4280872e81')

build() {
  cd "$startdir/src/InChI-1-software-1-02-beta/cInChI/gcc_makefile/"
  make || return 1
  echo
  echo "==> installing /usr/bin/cInChI-1"
  echo
  install -m755 -D "cInChI-1" "$startdir/pkg/usr/bin/cInChI-1"
}
