# Contributer: Richard Murri <admin@richardmurri.com>

pkgname=python-jsonschema
pkgver=0.2a
pkgrel=1
pkgdesc="library for defining the structure of JSON data."
arch=(any)
url=http://code.google.com/p/jsonschema/
license=('BSD')
depends=('python>=2.4')
makedepends=('setuptools')
source=(http://jsonschema.googlecode.com/files/jsonschema-${pkgver}.tar.gz)
md5sums=('3f127e685782e7bab4a385f41d8a0729')

build() {
  cd jsonschema-$pkgver
  python ./setup.py install --root=$pkgdir --prefix=/usr || return 1
}

