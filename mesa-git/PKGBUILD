package_libgles-git () {
  depends=('libglapi' 'libdrm' 'khrplatform-devel')
  pkgdesc="Mesa GLES libraries and headers"
  provides=("libgles")

  # fix linking because of splitted package
  make -C "${srcdir}/${_gitname}/src/mapi/shared-glapi" DESTDIR="${pkgdir}" install

  make -C "${srcdir}/${_gitname}/src/mapi/es1api" DESTDIR="${pkgdir}" install
  make -C "${srcdir}/${_gitname}/src/mapi/es2api" DESTDIR="${pkgdir}" install

  # fix linking because of splitted package - cleanup
  make -C "${srcdir}/${_gitname}/src/mapi/shared-glapi" DESTDIR="${pkgdir}" uninstall

  install -m755 -d "${pkgdir}/usr/share/licenses/libgles-git"
  install -m644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/libgles-git/"
}

package_libegl-git () {
  # check also egl.pc
  depends=('libx11' 'libxext' 'libxdamage' 'libxfixes' 'libxxf86vm' 'libxcb' 'libgbm' 'khrplatform-devel')
  pkgdesc="Mesa EGL libraries and headers"
  provides=("libegl")

  # fix link with libllvmradeon9.2.0
  make -C ${srcdir}/${_gitname}/src/gallium/drivers/radeon DESTDIR="${pkgdir}" install

  make -C "${srcdir}/${_gitname}/src/gallium/targets/egl-static" DESTDIR="${pkgdir}" install
  install -m755 -d "${pkgdir}/usr/share/doc/libegl"
  install -m644 "${srcdir}/${_gitname}/docs/egl.html" "${pkgdir}/usr/share/doc/libegl/"
  
  # fix linking because of splitted package
  make -C "${srcdir}/${_gitname}/src/mapi/shared-glapi" DESTDIR="${pkgdir}" install
  make -C "${srcdir}/${_gitname}/src/gbm" DESTDIR="${pkgdir}" install
  
  make -C ${srcdir}/${_gitname}/src/egl DESTDIR="${pkgdir}" install

  # fix link with libllvmradeon9.1
  make -C ${srcdir}/${_gitname}/src/gallium/drivers/radeon DESTDIR="${pkgdir}" uninstall

  # fix linking because of splitted package - cleanup
  make -C "${srcdir}/${_gitname}/src/gbm" DESTDIR="${pkgdir}" uninstall
  make -C "${srcdir}/${_gitname}/src/mapi/shared-glapi" DESTDIR="${pkgdir}" uninstall

  install -m755 -d "${pkgdir}/usr/share/licenses/libegl-git"
  install -m644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/libegl-git/"
  
  # fix file conflicts
  rm -rf "${pkgdir}/usr/include/KHR"
}

package_khrplatform-devel-git () {
  pkgdesc="Khronos platform development package"
  provides=("khrplatform-devel")

  install -m755 -d "${pkgdir}/usr/include/KHR"
  install -m644 "${srcdir}/${_gitname}/include/KHR/khrplatform.h" "${pkgdir}/usr/include/KHR/" 

  install -m755 -d "${pkgdir}/usr/share/licenses/khrplatform-devel-git"
  install -m644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/khrplatform-devel-git/"
}

package_ati-dri-git () {
  depends=("libgl=${pkgver}")
  pkgdesc="Mesa DRI radeon/r200 + Gallium3D r300,r600 drivers for AMD/ATI Radeon"
  conflicts=('xf86-video-ati<6.9.0-6')
  provides=("ati-dri")

  # fix linking because of splitted package
  make -C "${srcdir}/${_gitname}/src/mesa/libdricore" DESTDIR="${pkgdir}" install
  
  # classic mesa drivers for radeon,r200
  make -C "${srcdir}/${_gitname}/src/mesa/drivers/dri/radeon" DESTDIR="${pkgdir}" install
  make -C "${srcdir}/${_gitname}/src/mesa/drivers/dri/r200" DESTDIR="${pkgdir}" install
  # gallium3D driver for r300,r600,radeonsi
  make -C "${srcdir}/${_gitname}/src/gallium/targets/dri-r300" DESTDIR="${pkgdir}" install
  make -C "${srcdir}/${_gitname}/src/gallium/targets/dri-r600" DESTDIR="${pkgdir}" install
  make -C "${srcdir}/${_gitname}/src/gallium/targets/dri-radeonsi" DESTDIR="${pkgdir}" install
  # vdpau driver
  make -C "${srcdir}/${_gitname}/src/gallium/targets/vdpau-r300" DESTDIR="${pkgdir}" install
  make -C "${srcdir}/${_gitname}/src/gallium/targets/vdpau-r600" DESTDIR="${pkgdir}" install
  make -C "${srcdir}/${_gitname}/src/gallium/targets/vdpau-radeonsi" DESTDIR="${pkgdir}" install

  # fix linking because of splitted package - cleanup
  make -C "${srcdir}/${_gitname}/src/mesa/libdricore" DESTDIR="${pkgdir}" uninstall

  install -m755 -d "${pkgdir}/usr/share/licenses/ati-dri-git"
  install -m644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/ati-dri-git/"
}

