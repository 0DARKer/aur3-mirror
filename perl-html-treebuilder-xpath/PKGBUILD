pkgname='perl-html-treebuilder-xpath'
pkgver='0.11'
pkgrel='1'
pkgdesc="add XPath support to HTML::TreeBuilder"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-html-tree' 'perl-xml-xpathengine>=0.12')
url='http://search.cpan.org/dist/HTML-TreeBuilder-XPath'
source=('http://search.cpan.org/CPAN/authors/id/M/MI/MIROD/HTML-TreeBuilder-XPath-0.11.tar.gz')
md5sums=('45b93bd3c12d5270398c2f12e5fc1beb')

build() {
  _DISTDIR="${srcdir}/HTML-TreeBuilder-XPath-0.11"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
