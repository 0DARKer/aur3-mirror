# Maintainer: gareth_c 

pkgname=cinnamon-applet-screenlocker
pkgver=1.0
pkgrel=1
pkgdesc="This applet lock the screen"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/applets/view/7"
license=('GPL')
depends=('cinnamon' 'gtk3')
source=('http://cinnamon-spices.linuxmint.com/uploads/applets/PFPL-1QY4-TE0P.zip')
md5sums=('ea964feb901cae5b04c4483f98c1c172')
build() {
	cd ${srcdir}/ScreenLocker@spacy01/
	
	cinnamon_dir="$pkgdir/usr/share/cinnamon/applets/ScreenLocker@spacy01"

	mkdir -p $cinnamon_dir
	
	install -m0644 metadata.json applet.js $cinnamon_dir
}
