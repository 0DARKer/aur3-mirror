# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-html-mason-psgihandler
pkgver=0.52
pkgrel=1
pkgdesc="PSGI handler for HTML::Mason  "
arch=('i686' 'x86_64')
url="http://search.cpan.org/~abh/HTML-Mason-PSGIHandler-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/A/AB/ABH/HTML-Mason-PSGIHandler-$pkgver.tar.gz")
md5sums=('42aa3272e16af0d6f35ac031d274dad8')

build() {
	cd "$srcdir/HTML-Mason-PSGIHandler-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/HTML-Mason-PSGIHandler-$pkgver"
	make install DESTDIR="$pkgdir"
}
