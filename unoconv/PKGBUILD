pkgname=unoconv
pkgver=0.4
pkgrel=2
pkgdesc="unoconv converts between any document format that OpenOffice understands. It uses OpenOffice's UNO bindings for non-interactive conversion of documents."
depends=('python2' 'openoffice-base' 'java-runtime')
makedepends=('asciidoc')
arch=('any')
license=('GPL2')
url="http://dag.wieers.com/home-made/unoconv/"
source=(http://dag.wieers.com/home-made/${pkgname}/${pkgname}-${pkgver}.tar.bz2 python_and_details.patch)
md5sums=('64cd2c3b0823d329890c0bedffdfa6ae' '3c6403fc5fd3b9eadf4e3ad3659cf579')

build() {
    patch "${srcdir}"/${pkgname}-${pkgver}/${pkgname} -i python_and_details.patch
}

package() {
    cd "$srcdir"/"$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install
}
