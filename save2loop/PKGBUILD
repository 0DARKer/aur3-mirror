# Maintainer: Archlive <carbonjiao alt gmail dot com>
# Contributor:  Archlive <carbonjiao alt gmail dot com>

pkgname=save2loop
pkgver=0.11
pkgrel=1
pkgdesc="Boot and save changes to loop file support to initcpio of Arch"
arch=('any')
url="http://archlive-pkg.googlecode.com"
license=('GPL2')
depends=('mkinitcpio' 'aufs2' 'aufs2-util' 'e2fsprogs' 'coreutils' 'util-linux')
optdepends=('ntfs-3g: to enable place the loop files in ntfs partition')
source=(http://archlive-pkg.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
install=$pkgname.install

build() 
{
    cd $srcdir
    install -Dm644 ${pkgname}-${pkgver}/${pkgname}_hook  ${pkgdir}/lib/initcpio/hooks/${pkgname}
    install -Dm644 ${pkgname}-${pkgver}/${pkgname}_install  ${pkgdir}/lib/initcpio/install/${pkgname}
}

md5sums=('4235d6350f2ac9742a2e0a4f7a8a8ded')
