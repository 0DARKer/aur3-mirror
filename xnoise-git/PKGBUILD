pkgname=xnoise-git
pkgver=20121221
pkgrel=1
pkgdesc="Development branch of the Xnoise media player"
arch=('i686' 'x86_64')
url="https://github.com/shuerhaaken/xnoise"
license=('GPL')
depends=('gstreamer0.10-base-plugins' 'gtk3' 'libsoup' 'sqlite' 'taglib')
makedepends=('pkg-config' 'intltool' 'gnome-common' 'vala')
conflicts=('xnoise')
source=()
md5sums=()

_gitroot="https://bitbucket.org/shuerhaaken/xnoise.git"
_gitname="xnoise"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server..."

  if [ -d ${srcdir}/$_gitname ]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."
 
  if [ -d ${srcdir}/$_gitname-build ]; then
    rm -rf ${srcdir}/$_gitname-build
  fi

  git clone ${srcdir}/$_gitname ${srcdir}/$_gitname-build || return 1
  cd ${srcdir}/$_gitname-build || return 1

  ./autogen.sh
  make
  make DESTDIR="$pkgdir" install
}