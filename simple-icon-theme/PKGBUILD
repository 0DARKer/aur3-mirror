# Maintainer: twa022 <twa022 (at) gmail (dot) com>

pkgname=simple-icon-theme
pkgver=2.6.5
pkgrel=1
pkgdesc="Icon theme for GTK2"
arch=('any')
license=('GPL' 'LGPL' 'CC')
depends=('gtk2')
url="http://simplicity-desktop-theme.googlecode.com"
source=(http://simplicity-desktop-theme.googlecode.com/files/Simple-${pkgver}.tar.bz2)

build() {
  cd $srcdir
  subfolders=( actions animations apps categories devices emblems mimetypes places spinner status stock )
  for ((i=0;$i<${#subfolders[*]};i++)) ; do
    mkdir -p $pkgdir/usr/share/icons/Simple/scalable/${subfolders[$i]}
    install -m644 $srcdir/Simple/scalable/${subfolders[$i]}/*png $pkgdir/usr/share/icons/Simple/scalable/${subfolders[$i]}/
  done
  install -m644 $srcdir/Simple/{AUTHORS,index.theme} $pkgdir/usr/share/icons/Simple/
}

md5sums=('83c2038663d9665e4e1d723530b09894')

