# Maintainer: Aaron Paden <aaronbpaden@gmail.com>
pkgname=docopts
pkgver=0.5.0+fix
pkgrel=1
pkgdesc="Shell interface for docopt, the CLI description language"
arch=('any')
url="http://github.com/docopt/docopts"
license=('MIT')
depends=('python' 'python2-docopt')
source=("http://pypi.python.org/packages/source/d/$pkgname/$pkgname-${pkgver//+/-}.tar.gz" 'LICENSE-MIT')

sha256sums=('a3b6882db146a8c6d38b98c2a5dd7812357444c09ed01b08cd7d17851ecd2e3e'
            'bfc6808c7dfe3de9e592c0f6ce4176fce6b1526b87b3c10cec1cd7679b660d28')

build() {
  cd "$srcdir/${pkgname/python-}-${pkgver//+/-}"
  python2 setup.py install -O1 --root="$pkgdir"
  install -Dm0644 "$srcdir/LICENSE-MIT" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

