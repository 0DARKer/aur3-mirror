pkgname=ucblogo
pkgver=5.5
pkgrel=3
pkgdesc="portable semi-canonical dialect of Logo programming language"
url="http://www.cs.berkeley.edu/~bh/logo.html"
license="GPL"
depends=('libx11' 'ncurses')
makedepends=('tetex')
source=(ftp://ftp.cs.berkeley.edu/pub/ucblogo/ucblogo.tar.gz)
md5sums=('47b8468ec9222d7e3893fae90e537786')

build()
{
	cd $startdir/src/$pkgname
	./configure --prefix=/usr
	make # CFLAGS="-march=$CARCH -O2"
	make install prefix=$startdir/pkg/usr
}
