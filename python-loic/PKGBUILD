# Contributor: wido <widomaker2k7@gmail.com>

pkgname=python-loic
_pkgname=pythonLoic
pkgver=2.4
pkgrel=1
pkgdesc="Python low orbit ion cannon (loic)"
arch=('any')
url="http://code.google.com/p/pythonloic/"
license=('CUSTOM')
depends=('python')
makedepends=()
optdepends=()
source=(http://pythonloic.googlecode.com/files/${_pkgname}${pkgver}.zip)
md5sums=('c2ea4b4d588584124ac413082412d8c2')

build() {
    true
}

package() {
    cd ${srcdir}/
    install -d ${pkgdir}/opt/${pkgname}
    cp -R ${srcdir}/{scapy,${_pkgname}${pkgver}.py,synsenderv1.1.py} ${pkgdir}/opt/${pkgname}

    #Launcher

    install -d ${pkgdir}/usr/bin/
    echo "#!/bin/bash
    cd /opt/python-loic
    python ${_pkgname}${pkgver}.py" > ${pkgdir}/usr/bin/${pkgname}

    chmod 755 ${pkgdir}/usr/bin/${pkgname}

}
