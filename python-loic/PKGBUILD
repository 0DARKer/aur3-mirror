# Contributor: wido <widomaker2k7@gmail.com>

pkgname=python-loic
_pkgname=PythonLoic
pkgver=2.5.2
pkgrel=1
pkgdesc="Python low orbit ion cannon (loic)"
arch=('any')
url="http://code.google.com/p/pythonloic/"
license=('CUSTOM')
depends=('python')
makedepends=()
optdepends=()
source=(http://pythonloic.googlecode.com/files/${_pkgname}${pkgver}.zip)
md5sums=('726e7e539dd9248ed9042ff81de5ec8f')

build() {
    true
}

package() {
    cd ${srcdir}/
    install -d ${pkgdir}/opt/${pkgname}
    cp -R ${srcdir}/{scapy,pythonLoic${pkgver}_python3.py,synsenderv1.1.py} ${pkgdir}/opt/${pkgname}

    #Launcher

    install -d ${pkgdir}/usr/bin/
    echo "#!/bin/bash
    cd /opt/python-loic
    python pythonLoic${pkgver}_python3.py" > ${pkgdir}/usr/bin/${pkgname}

    chmod 755 ${pkgdir}/usr/bin/${pkgname}

}
