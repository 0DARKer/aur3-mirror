# Maintainer: Ali H. Caliskan <ahc (at) selflex.org>

pkgname=cheflex
pkgver=1.0
pkgrel=1
pkgdesc="A simple yet flexible package manager."
arch=('i686' 'x86_64')
url='http://www.selflex.org/cheflex'
license=('GPL-3')
depends=('axel' 'bash' 'fakeroot')
source=("https://github.com/selflex/${pkgname}/tarball/${pkgver}")
md5sums=('a7f37a0d6babff1225065f48261a165c')

package() {
	cd ${srcdir}/selflex-cheflex-*

	install -D -m755 cheflex.sh ${pkgdir}/usr/bin/cheflex
	install -D -m644 cheflex.rc ${pkgdir}/etc/cheflex.rc
}