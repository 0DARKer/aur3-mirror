# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=autoblog
pkgver=0.2
pkgrel=1
pkgdesc="A command-line application for maintinaing a blog"
arch=(i686 x86_64)
url="https://sites.google.com/site/columscode/home/autoblog"
license=('GPL3')
depends=('openssl')
source=("https://sites.google.com/site/columscode/files/$pkgname-$pkgver.tar.gz")
md5sums=('905a487c8bd6df803f989636fff5b0f8')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr \
              --enable-ssl
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
