# Contributor: feufochmar <feufochmar@d-20.fr>
pkgname=panache-lartworks-svn
pkgver=412
pkgrel=1
pkgdesc="Artworks for the Panache Desktop Environment"
arch=('i686' 'x86_64')
url="http://www.logram-project.org/"
license=('GPL')
depends=()
makedepends=('subversion')
provides=()
source=()
md5sums=()

_svntrunk="svn://logram-project.org/logram/trunk/DE/lartworks"
_svnmod=logram-svn

build() {

  ## start building
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cd $_svnmod
  
  ## clear tmp
  make clean

  #
  # BUILD HERE
  #
  
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
  
} 
