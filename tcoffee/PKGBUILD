# Maintainer: Mick Elliot <micke at sfu dot ca>
# Contributor: Damir Perisa <damir.perisa@bluewin.ch>

pkgname=tcoffee
pkgver=7.76
pkgrel=1
arch=('i686' 'x86_64')
license=('GPL2')
pkgdesc="Tree based Consistency Objective Function For AlignmEnt Evaluation"
url="http://www.tcoffee.org/Projects_home_page/t_coffee_home_page.html"
depends=('gcc-libs')
source=("http://www.tcoffee.org/Packages/T-COFFEE_distribution.tar.gz")
md5sums=('1a2c3b384e4c469f003cadaf5854dff1')

build() {
  cd $srcdir/T-COFFEE_distribution_Version_$pkgver/t_coffee_source || return 1
  make -i CC=gcc FCC=gfortran all || return 1
  install -Dm755 t_coffee $pkgdir/usr/bin/t_coffee || return 1
  install -Dm755 TMalign $pkgdir/usr/bin/TMalign || return 1
}
