# Contributor: sh0 <mee@sh0.org>

_pkgname=rdesktop
pkgname=rdesktop-ipv6
pkgver=1.6.0
pkgrel=1
depends=('libx11' 'openssl' 'libao' 'libsamplerate')
pkgdesc="Is used to connect to windows terminal servers (with IPv6 support)"
url="http://www.rdesktop.org/"
license=('GPL')
arch=('i686' 'x86_64')
provides=('rdesktop=1.6.0')
conflicts=('rdesktop')
replaces=('rdesktop')
source=(http://downloads.sourceforge.net/$_pkgname/$_pkgname-$pkgver.tar.gz
	'rdesktop-send_physical_buttons.diff')
md5sums=('c6fcbed7f0ad7e60ac5fcb2d324d8b16'
         '880d3aeac67b901e6bf44d1323374768')

build() {
   cd $srcdir/$_pkgname-$pkgver

   patch -i ${srcdir}/rdesktop-send_physical_buttons.diff || return 1

   ./configure --prefix=/usr --with-ipv6
   make || return 1
   make DESTDIR=$pkgdir install
}

