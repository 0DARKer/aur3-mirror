# Maintainer: Akshay Srinivasan <akshaysrinivasan@gmail.com>

pkgname=baraha
pkgver=1.0
pkgrel=1
pkgdesc="Baraha Truetype fonts for Indian languages"
arch=('i686' 'x86_64')
url="http://www.baraha.com/"
license=('GPL')
source=(http://www.baraha.com/download/baraha_fonts.zip)
md5sums=('625535d1478fc54d6081a7572bb88614')

build() {
  cd ${srcdir}
  mkdir baraha
  mv *.ttf baraha/
  mv README baraha/

  mkdir -p ${pkgdir}/usr/share/fonts/TTF/
  cp -r ${srcdir}/baraha ${pkgdir}/usr/share/fonts/TTF/
}


