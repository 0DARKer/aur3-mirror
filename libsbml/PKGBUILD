# Maintainer: Michael Schubert <mschu.dev at gmail>

pkgname=libsbml
_pkgname=libSBML
pkgver=5.0.0
pkgrel=1
pkgdesc="XML-based description language for representing computational models in systems biology"
url="http://sbml.org/Software/libSBML"
license=('LGPL')
arch=('i686' 'x86_64')
depends=('gcc-libs' 'bzip2' 'libxml2')
md5sums=('dd6937fb9ede3d3b916a8f8bbd5333a0')
source=("http://downloads.sourceforge.net/project/sbml/$pkgname/$pkgver/$_pkgname-$pkgver-src.tar.gz")

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
  rm -Rf $pkgdir/usr/lib/pkgconfig
}
