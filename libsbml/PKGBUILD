# Maintainer: Michael Schubert <mschu.dev at gmail>

pkgname=libsbml
_pkgname=libSBML
pkgver=5.2.0
pkgrel=1
pkgdesc="XML-based description language for computational models in systems biology"
url="http://sbml.org/Software/libSBML"
license=('LGPL')
arch=('i686' 'x86_64')
depends=('gcc-libs' 'libxml2' 'python2' 'perl' 'ruby' 'java-runtime')
optdepends=('bzip2' 'octave' 'mono')
builddepends=('swig')
options=('!libtool')
md5sums=('23c7a891f988984948d9977b405c1da3')
source=("http://downloads.sourceforge.net/project/sbml/$pkgname/$pkgver/stable/$_pkgname-$pkgver-src.tar.gz")

build() {
  mkdir -p "$srcdir/build" && cd "$srcdir/build"

  cmake -DCMAKE_BUILD_TYPE=release -DWITH_PYTHON=1 -DWITH_JAVA=1 \
    -DWITH_OCTAVE=0 -DWITH_CSHARP=0 -DWITH_PERL=1 -DWITH_RUBY=1 \
    -DWITH_MATLAB=0 -DCMAKE_INSTALL_PREFIX=/usr "../$pkgname-$pkgver"

  find . -name "build.make" | xargs sed -i "s:/usr/bin/python:/usr/bin/python2:"
  make || return 1
}

package() {
  cd "$srcdir/build"
  make DESTDIR="$pkgdir" install
}
