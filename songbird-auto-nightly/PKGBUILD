# I hacked this to just scrape the needed versioning info so that this doesn't
# have to be edited every day you choose to rebuild

# Just a shout out to the songbird devs to go screw themselves for officially
# dropping linux support - so nightlies are the best we can do

pkgname=songbird-auto-nightly
pkgver=nightly
pkgrel=1
pkgdesc="Nightly Songbird build. 32-bit support only."
arch=('i686')
url="http://www.songbirdnest.com/"
license=('GPL2')
depends=('libxrender' 'libxext' 'libx11' 'libxmu' \
         'gstreamer0.10' 'gstreamer0.10-base' 'gtk2' 'libxt' \
	 'sqlite3' 'nss' 'libidl2' 'gstreamer0.10-good-plugins')
optdepends=('gstreamer0.10-bad: support for more formats'
	    'gstreamer0.10-good: support for more formats'
	    'gstreamer0.10-ugly: support for more formats')
makedepends=('sed' 'grep' 'tar' 'wget')
provides=('songbird')
conflicts=('songbird' 'songbird-bin' 'songbird-auto-beta' 'songbird-svn' 'songbird-nightly' 'songbird-nightly-bin' 'songbird-stable-bin' 'songbird-nightly-latest')
install=songbird-nightly.install
source=(Songbird.desktop songbird-launcher.sh)
md5sums=('02ffd66cd34054654135b25d8f82b906'
         'afc2ad4ad4954e98af3703a1a07cd574')

build() {
  
 
  # Why update daily when we can just scrape the url for the latest version?
  VERSION=`wget -qO- http://developer.songbirdnest.com/builds/trunk/latest/|grep -o 'href=\"Songbird_.*_linux-i686.tar.gz\"'|sed 's/href=\"//'|sed 's/gz\".*/gz/'`
	
  cd ${srcdir}
  
  if [ -a `echo $VERSION|grep -o Songbird.*.tar.gz` ]
  then
	msg "File exists, no need to download."
  else
	wget http://developer.songbirdnest.com/builds/trunk/latest/${VERSION}
	wget http://developer.songbirdnest.com/builds/trunk/latest/${VERSION}.md5
  fi
  
  msg "Checking md5sum of Songbird archive..."
  md5sum -c ${VERSION}.md5
  msg "Building."
  
  tar xf ${VERSION}

  # Use the proper number for the pkgver and pkgrel
  pkgver=`echo ${VERSION}|sed 's/Songbird\_//'|sed 's/\-.*_linux.*\.tar\.gz//'`
  pkgrel=`echo ${VERSION}|grep -o '[0-9][0-9][0-9][0-9]'`
  
  cd Songbird_build-${pkgrel}
    
  install -d --group=users ${startdir}/pkg/opt/songbird
  cp -a ${startdir}/src/Songbird_build-${pkgrel}/* \
        ${startdir}/pkg/opt/songbird || return 1
  chmod 755 ${startdir}/pkg/opt/songbird/songbird
  chmod 755 ${startdir}/pkg/opt/songbird/songbird-bin
  chmod 755 ${startdir}/pkg/opt/songbird/xulrunner/xulrunner
  chmod 755 ${startdir}/pkg/opt/songbird/xulrunner/xulrunner-bin
  chmod -R a+r ${startdir}/pkg/opt/songbird
  install -D ${startdir}/src/Songbird_build-${pkgrel}/chrome/icons/default/default.xpm \
  	     ${startdir}/pkg/usr/share/pixmaps/Songbird.xpm
  install -D -m644 ${startdir}/src/Songbird.desktop \
  	     	   ${startdir}/pkg/usr/share/applications/Songbird.desktop
  install --directory ${startdir}/pkg/usr/bin
  
  ## fixing the problem with system-wide installs:
  find ${startdir}/pkg/opt/songbird -type d -exec chmod 755 {} \;
  install --directory ${startdir}/pkg/usr/bin
  install ${startdir}/src/songbird-launcher.sh ${startdir}/pkg/usr/bin/songbird
}
