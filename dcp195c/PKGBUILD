# Contributor: Łukasz Jędrzejewski <lukasz892 at gmail dot com>
pkgname=dcp195c
pkgver=1.1.2
pkgrel=1
pkgdesc="CUPS driver for Brother DCP-195 printer"
arch=('i686')
license=('custom:Brother Industries')
depends=('cups' 'tcsh')
makedepends=('rpmextract')
url="http://solutions.brother.com/linux/en_us/index.html"
source=(http://www.brother.com/pub/bsc/linux/dlf/dcp195clpr-1.1.2-1.i386.rpm \
    http://www.brother.com/pub/bsc/linux/dlf/dcp195ccupswrapper-1.1.2-2.i386.rpm)
md5sums=('d4e8c28c539face3a1a40cac84ba124a'
         'bffabf399b2e566211d5cd136edde658')
build() {
    cd "$startdir/pkg" || return 1
    for n in $startdir/src/*.rpm; do
        rpmextract.sh "$n" || return 1
    done 
    sed -i 's|/etc/init.d|/etc/rc.d|' $pkgdir/usr/local/Brother/Printer/dcp195c/cupswrapper/cupswrapperdcp195c
}
