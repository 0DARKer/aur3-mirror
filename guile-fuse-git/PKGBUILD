pkgname=guile-fuse-git
_gitname=guile-fuse
pkgver=2.f28bfde
pkgrel=1
pkgdesc='guile bindings for fuse - filesystems in userspace'
arch=(any)
license=(GPL3)
makedepends=(git)
depends=(guile fuse)
conflicts=(guile-fuse)
source=("git://sph.io/guile-fuse")
url=http://sph.io/browse/name/guile-fuse/overview
md5sums=(SKIP)

pkgver() {
  cd $_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $_gitname
  ./build/make.scm
}

package() {
  cd $_gitname
  ./build/install.scm $pkgdir/usr
}