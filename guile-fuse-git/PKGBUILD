pkgname=guile-fuse-git
_gitname=guile-fuse
pkgver=
pkgrel=1
pkgdesc='guile bindings for fuse - filesystems in userspace'
arch=(any)
license=(GPL3)
provides=(guile-fuse)
makedepends=(git sph-sc)
depends=(guile fuse)
source=("git://sph.io/guile-fuse")
url="http://sph.io/content/467"
md5sums=(SKIP)

pkgver() {
  cd $_gitname
  git log -n 1 --pretty=format:"%h"
}

build() {
  cd $_gitname
  ./exec/compile
}

package() {
  cd $_gitname
  ./exec/install $pkgdir
}