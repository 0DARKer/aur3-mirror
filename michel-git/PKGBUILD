# Maintainer: Christophe-Marie Duquesne <chmd@chmd.fr>

pkgname=michel-git
pkgdesc="push/pull flat text files to gtasks"
url="http://github.com/chmduquesne/michel"
depends=(
    'python2-google-api-python-client'
    'python2-gflags'
    'python2-httplib2'
    'pyxdg'
    'python2-oauth2')
makedepends=('python2-distribute' 'git')
provides=('michel')
license=('Public Domain')
arch=('any')
pkgver=6d15afa
pkgrel=1
source=('git+http://github.com/chmduquesne/michel.git')
md5sums=('SKIP')
_gitname='michel'

pkgver() {
    cd "$_gitname"
    git describe --always | sed 's|-|.|g'
}

package() {
  cd "$_gitname"
  python2 setup.py install --root="$pkgdir" --optimize=1
  chmod +r ${pkgdir}/* -R
}
