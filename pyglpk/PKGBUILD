# Contributor: Robert Schwarz <mail@rschwarz.net>
pkgname=pyglpk
pkgver=0.3
pkgrel=1
pkgdesc="A python wrapper of the GLPK library."
arch=("i686" "x86_64")
url="http://www.cs.cornell.edu/~tomf/pyglpk/"
license=('GPL')
depends=(glpk gmp python)
source=(http://www.cs.cornell.edu/~tomf/pyglpk/$pkgname-$pkgver.tar.bz2)
noextract=()
md5sums=(a79725e26e03d145e068a3da7c4c1871)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root "${pkgdir}" || return 1
}
