# Maintainer: Thomas Nixon <tom@tomn.co.uk>
# Original contributor: Robert Schwarz <mail@rschwarz.net>
pkgname=pyglpk
pkgver=0.3.1
pkgrel=2
pkgdesc="A python2 wrapper of the GLPK library. Updated fork."
arch=("i686" "x86_64")
url="https://github.com/bradfordboyle/pyglpk"
license=('GPL')
depends=(glpk gmp python2)
source=(git+https://github.com/bradfordboyle/pyglpk.git#commit=68747b1434141405578f9dd0e05975e3fafd6ca4)
md5sums=(SKIP)

build() {
    cd "$srcdir/$pkgname"
    python2 setup.py build
}

package() {
    cd "$srcdir/$pkgname"
    python2 setup.py install --root "${pkgdir}"
}
