post_install () {
cat << EOF

/boot should be mounted on boot for proper operation, do not
use options such as noauto,x-systemd.automount in /etc/fstab

EOF
/usr/bin/ckboot-init
}

post_remove () {
rm /tmp/ckboot &> /dev/null
rm /var/ckboot/{filehash,mbrhash} &> /dev/null
rmdir /var/ckboot &> /dev/null
}
