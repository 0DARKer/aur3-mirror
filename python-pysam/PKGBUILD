pkgname='python-pysam'
pkgver=0.8.0
pkgrel=1
pkgdesc="Python interface for the SAM/BAM sequence alignment and mapping format"
arch=('x86_64')
url="https://github.com/pysam-developers/pysam"
license=('MIT')
groups=()
depends=('python')
makedepends=('python-setuptools' 'cython>=0.20.1')
provides=('python-pysam')
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("https://pypi.python.org/packages/source/p/pysam/pysam-${pkgver}.tar.gz")
md5sums=('7c5ddff512b86ac358810317340be077')

package() {
  cd "$srcdir/pysam-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

