pkgname='python-pysam'
pkgver=0.7.7
pkgrel=1
pkgdesc="Python interface for the SAM/BAM sequence alignment and mapping format"
arch=('x86_64')
url="http://code.google.com/p/pysam/"
license=('MIT')
groups=()
depends=('python')
makedepends=('python-setuptools')
provides=('python-pysam')
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("https://pypi.python.org/packages/source/p/pysam/pysam-${pkgver}.tar.gz")
md5sums=('eaf9f37cbccc5e2708754d045909c1a0')

package() {
  cd "$srcdir/pysam-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

