# Contributor: DaNiMoTh <jjdanimoth@gmail.com>

pkgname=compiz-kde-git
pkgver=20070913
pkgrel=1
pkgdesc="Composite and window manager (kde)"
url="http://en.opensuse.org/Compiz"
license=('GPL')
arch=('i686' 'x86_64')
depends=('libgl' 'xorg-server' 'libxcb' 'dbus' 'librsvg' 'kdebase')
makedepends=('git' 'intltool' 'gconf' 'perlxml')
provides=('compiz-git')
conflicts=('compiz-core' 'compiz' 'compiz-decorator-gnome' \
           'compiz-decorator-kde' 'compiz-git')
source=()
md5sums=()

_gitroot="git://anongit.freedesktop.org/git/xorg/app/compiz"
_gitname="compiz"

build() {
  source /etc/profile.d/qt.sh
  source /etc/profile.d/kde.sh

  msg "Connecting to the GIT server...."
 
  if [[ -d $startdir/src/$_gitname ]] ; then
    cd $_gitname
    git-pull origin || return 1
    msg "The local files are updated."
  else
    git clone $_gitroot || return 1
  fi

  msg "GIT checkout done"
  msg "Starting make..."

  rm -rf $startdir/src/$_gitname-build
  cp -r $startdir/src/$_gitname $startdir/src/$_gitname-build

  cd $startdir/src/$_gitname-build

  ./autogen.sh \
    --prefix=/usr \
    --infodir=/usr/share/info \
    --mandir=/usr/man \
    --sysconfdir=/etc \
    --disable-gnome \
    --disable-metacity \
    --disable-gtk \
    --disable-glib \
    --enable-kde \
    --enable-librsvg \
    --disable-gconf || return 1

  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  rm -rf ${startdir}/src/$_gitname-build
}
