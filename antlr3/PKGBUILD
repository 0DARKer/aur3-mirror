# Contributor: Artyom Smirnov <smirnoffjr@gmail.com>
# Contributor: Alexis Robert <alexis.robert@gmail.com>

pkgname=antlr3
_realname=antlr
pkgver=3.2
pkgrel=1
pkgdesc="ANother Tool for Language Recognition, (formerly PCCTS) is a language tool that provides a framework for constructing recognizers, compilers, and translators from grammatical descriptions containing C++, Java, C or python actions"
url="http://www.antlr.org/"
arch=("i686" "x86_64")
license=("BSD")
depends=('java-environment' 'bash')
makedepends=()
provides='antlr3'
source=(http://www.antlr.org/download/${_realname}-${pkgver}.jar
        antlr3
		LICENSE.txt)
md5sums=('ee7dc3fb20cf3e9efd871e297c0d532b'
         'd124853d585dc0998c6f1b3094ebb501'
		 '86ce64da400dd6d3d4d98df564b9b1a1')
options=()

build() {
  # ANTLR itself
  install -m755 -d "${pkgdir}/usr/share/java" \
        		   "${pkgdir}/usr/bin" \
  		           "${pkgdir}/usr/share/licenses/${pkgname}"

  install -m644 ${srcdir}/${_realname}-${pkgver}.jar "${pkgdir}/usr/share/java/" || return 1
  ln -s /usr/share/java/${_realname}-${pkgver}.jar "${pkgdir}/usr/share/java/antlr3.jar" || return 1
  install -m755 "${srcdir}/${pkgname}" "${pkgdir}/usr/bin/${pkgname}" || return 1
  
  # License
  install -m644 "${srcdir}/LICENSE.txt" "${pkgdir}/usr/share/licenses/${pkgname}/"  
}

