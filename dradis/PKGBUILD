# Maintainer: Michael P <ptchinster@archlinux.us>

pkgname=dradis
pkgver=2.5.2
_latest=.2
pkgrel=4
pkgdesc="Open source framework to enable effective information sharing"
arch=('i686' 'x86_64')
url="http://dradisframework.org/"
license=('GPL')
groups=()
depends=('sqlite3' 'rubygems' 'ruby-sqlite3-ruby')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install='install'
changelog=
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-v$pkgver.tar.bz2" "patch1.patch")
noextract=()
md5sums=('dd8184df383c9b2abf201b16dc6202e5' '054fd47e48ec977179d5c78596ea6e39')

build() {
	#rake dradis:reset

	mkdir -p "${pkgdir}/opt/${pkgname}"
	cd "${srcdir}/${pkgname}-${pkgver/$_latest}"
	patch -p0 ../patch1.patch
	cd "server"
	mv * "${pkgdir}/opt/${pkgname}"
}

