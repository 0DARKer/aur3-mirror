# Maintainer: awh

pkgname=iptckwed-git
_gitname="iptckwed"
pkgver=v1.3.g4360c75.g4360c75
pkgrel=1
pkgdesc="IPTC keyword editor"
arch=('i686' 'x86_64')
url="https://github.com/muennich/iptckwed"
license=('GPL2')
depends=('exiv2' 'gcc-libs-multilib')
makedepends=('git')
source=('git://github.com/muennich/iptckwed.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo $(git describe --always | sed 's|-|.|g').g$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$_gitname"

  make PREFIX="/usr"
}

package() {
  cd "$srcdir/$_gitname"
  make PREFIX="/usr" DESTDIR="$pkgdir" install
}
