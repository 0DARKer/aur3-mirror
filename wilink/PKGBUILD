pkgname=wilink
pkgver=2.1.0
pkgrel=1
pkgdesc="wiLink"
arch=(any)
url="http://opensource.wifirst.net/projects/wilink/"
license=('GPL')
groups=
provides=
depends=('qt' 'libgnome-keyring' 'libmad' 'speex' 'libvorbis' 'libtheora' 'libvpx' 'libxss')
optdepends=
makedepends=('cmake')
conflicts=
replaces=
backup=
install=
source=(https://dl.dropbox.com/s/tjtdf27hfs3oopl/wiLink-2.1.0.tar.gz?dl=1)
md5sums=('2aa4b446fbc3b72de7515320f0f30226')
 
build() {
cd $srcdir/wiLink-$pkgver
cmake `pwd`
make
}

package() {
cd $srcdir/wiLink-$pkgver
make DESTDIR=$pkgdir/ install
}
