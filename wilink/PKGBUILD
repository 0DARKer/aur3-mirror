# Contributor: SpepS <dreamspepser at yahoo dot it>

_pkg=wiLink
pkgname=wilink
pkgver=2.2.2
pkgrel=4
pkgdesc="A Wifirst application for Instant communications"
arch=('i686' 'x86_64')
url="http://opensource.wifirst.net/projects/wilink/"
license=('GPL3')
groups=
provides=
depends=('qt>=4.7.4' 'libgnome-keyring' 'libmad' 'speex' 'libvorbis' 'libtheora' 'libvpx' 'libxss' 'libnotify' 'libgphoto2')
optdepends=
makedepends=('cmake>=2.8.2')
conflicts=
replaces=
backup=
install="$pkgname.install"
source=(https://download.wifirst.net/public/wiLink-2.2.2.tar.bz2)
md5sums=('0566c6c345eea594cb8d2024cc5c0409')
 
build() {
cd "$srcdir/$_pkg-$pkgver"
[ -d build ] || mkdir build && cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr ..
make
}

package() {
cd "$srcdir/$_pkg-$pkgver/build"
make DESTDIR="$pkgdir/" install

 # icon
install -Dm644 ../src/data/64x64/$_pkg.png \
    "$pkgdir/usr/share/pixmaps/$_pkg.png"
}
