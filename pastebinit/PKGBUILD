# maintainer: Francois Boulogne <fboulogne at april dot org>

pkgname=pastebinit
pkgver=1.2
pkgrel=3
pkgdesc="A software that lets you send anything you want directly to a pastebin from the command line"
arch=(any)
url="http://launchpad.net/pastebinit"
license=("GPL")
depends=("python2" "python-configobj" )
makedepends=("asciidoc")
source=(http://launchpad.net/pastebinit/trunk/$pkgver/+download/pastebinit-$pkgver.tar.gz) 
md5sums=( "676dca696755bb92dd485a2246b1d75d")

build() {
	cd $srcdir/$pkgname-$pkgver
	mkdir -p $pkgdir/usr/{bin,share/man/man1,share/locale} $pkgdir/etc
	#python 2
	sed -i -e "s|#!/usr/bin/python$|#!/usr/bin/python2|" pastebinit
	install -m 755 pastebinit $pkgdir/usr/bin
	cp -a pastebin.d $pkgdir/usr/share
	a2x -f manpage pastebinit.xml
	install -m 644 pastebinit.1 $pkgdir/usr/share/man/man1
	cd po
	make
	cp -a mo/* $pkgdir/usr/share/locale
}
