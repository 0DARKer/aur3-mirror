# Contributor: lh <jason52lh@gmail.com>
pkgname=fcitx-rime-git
pkgver=20120524
pkgrel=1
pkgdesc="Fcitx Wrapper for librime."
arch=('i686' 'x86_64')
url="http://code.google.com/p/fcitx"
license=('GPL')
depends=('fcitx' 'librime')
makedepends=('git' 'cmake' 'intltool')
provides=(fcitx-rime)
conflicts=('fcitx-rime')
source=(https://github.com/lotem/brise/zipball/rime-0.9.1)
_brise_name=lotem-brise-02cb17d

_gitroot=https://github.com/fcitx/fcitx-rime
_gitname=fcitx-rime

build(){
  cd "$srcdir"
  rm -rf brise/
  cp -r ${_brise_name}/ brise/

  msg "Connecting to the GIT server...."

  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  cd "$srcdir"

  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -rf "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make DESTDIR=${pkgdir} install
}
md5sums=('6eee010d0952021cde2c682f6c39a396')
