post_install() {
  /usr/bin/udevadm control --reload
  /usr/bin/depmod -A $(ls -v /usr/lib/modules | grep extra | tail -n 1) > /dev/null 2>&1
}

post_upgrade() {
  post_install
}

post_remove() {
  /usr/bin/depmod -A $(ls -v /usr/lib/modules | grep extra | tail -n 1) > /dev/null 2>&1
  /usr/bin/udevadm control --reload
}

