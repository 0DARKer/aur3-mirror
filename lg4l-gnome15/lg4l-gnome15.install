post_install() {
  echo ">> Add the 'hid-*' modules for your devices to /etc/modules.load.d/modules.conf"
  echo ">> to enable them on system boot."
  echo ">> These modules needs to be recompiled for every kernel version upgrade."
  depmod -A > /dev/null 2>&1
}

post_upgrade() {
  post_install
}

post_remove() {
  depmod -A > /dev/null 2>&1
}

