# Maintainer: Nuno Araujo <nuno.araujo@russo79.com>
pkgname=lg4l-gnome15
pkgver=0.13
pkgrel=2
pkgdesc="Drivers for Logitech G devices (Gnome15 branch)"
arch=(i686 x86_64)
url="http://www.russo79.com/gnome15"
license=('GPL')
depends=('linux>=3.9' 'linux<3.10')
makedepends=('linux-headers>=3.9' 'linux-headers<3.10')
conflicts=('lg4l-git')
install=lg4l-gnome15.install
source=("https://projects.russo79.com/attachments/download/84/$pkgname-$pkgver.tar.gz")
md5sums=('937c155496d442edc5dc3140358d57af')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	install -d "${pkgdir}/lib/modules/$(uname -r)/extramodules/"
	install -t "${pkgdir}/lib/modules/$(uname -r)/extramodules/" *.ko
}
