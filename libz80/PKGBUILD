# Contributor: Harley Laue <losinggeneration@gmail.com>
pkgname=libz80
pkgver=1.99
pkgrel=2
pkgdesc="A simple and clean Z80 emulation library."
arch=(i686 x86_64 ppc)
url="http://libz80.sourceforge.net/"
license=('GPL')
depends=('glibc')
makedpends=('patch')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz
        libz80.gcc4-fix.makefile.patch)
md5sums=('cf5c6f37baf6f1db5b7b422c7810cbe4'
         '42057266127107c170f55f94d9adc24e')

build() {
  cd "$srcdir/$pkgname"
  patch -p1 -i ../libz80.gcc4-fix.makefile.patch

  make -j1 || return 1
  make DESTDIR="$pkgdir/" install

  # Is this a bad way to go about this?
  find $pkgdir -type f -exec chmod go-w {} \;
}

# vim:set ts=2 sw=2 et:
