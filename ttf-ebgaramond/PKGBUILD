pkgname=ttf-ebgaramond
pkgver=20111107
pkgrel=1
pkgdesc="EB Garamond is an open source project to create a revival of Claude Garamontâ€™s famous humanist typeface from the mid-16th century"
arch=('any')
url="http://www.georgduffner.at/ebgaramond/"
license=('custom:OFL')
depends=('fontconfig' 'xorg-font-utils')
source=('https://github.com/georgd/EB-Garamond/blob/4c520b67e71e37ae602bdd800a76f699b4ec1f2d/otf/EBGaramond.otf?raw=true'
	'OFL.txt')
install=${pkgname}.install
md5sums=('85cc2a3fe46be71929048f4f22fd655b'
         '6ed93967ff0dc6dd9c8d31c17f817a06')
         
package() {
  install -Dm644 ${srcdir}/EBGaramond.otf\?raw=true ${pkgdir}/usr/share/fonts/TTF/ttf-ebgaramond.otf
  install -Dm644 ${srcdir}/OFL.txt ${pkgdir}/usr/share/licenses/ttf-ebgaramond/OFL.txt
}
