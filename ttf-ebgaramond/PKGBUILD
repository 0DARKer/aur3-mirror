# Maintainer: Christoph Glaubitz <chris at chrigl dot de>

pkgname=ttf-ebgaramond
pkgver=0.014a
pkgrel=1
pkgdesc="EB Garamond is an open source project to create a revival of Claude Garamontâ€™s famous humanist typeface from the mid-16th century"
arch=('any')
url="http://www.georgduffner.at/ebgaramond/"
license=('custom:OFL')
depends=('fontconfig' 'xorg-font-utils')
source=("https://github.com/downloads/georgd/EB-Garamond/EBGaramond-${pkgver}.zip"
	'OFL.txt')
install=${pkgname}.install
md5sums=('02e0fbf2b8b95006b0df69dc42a0eb48'
         '6ed93967ff0dc6dd9c8d31c17f817a06')
         
package() {
  install -Dm644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond-Regular.otf ${pkgdir}/usr/share/fonts/TTF/EBGaramond-Regular.otf
  install -Dm644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond-SC.otf ${pkgdir}/usr/share/fonts/TTF/EBGaramond-SC.otf
  install -Dm644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond-Italic.otf ${pkgdir}/usr/share/fonts/TTF/EBGaramond-Italic.otf
  install -Dm644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond-AllSC.otf ${pkgdir}/usr/share/fonts/TTF/EBGaramond-AllSC.otf
  install -Dm644 ${srcdir}/OFL.txt ${pkgdir}/usr/share/licenses/ttf-ebgaramond/OFL.txt
}
