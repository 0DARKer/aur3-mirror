pkgname=python2-watchdog
pkgver=0.5.4
pkgrel=1
pkgdesc="This decorator will turn your normal python functions into proper shell commands"
arch=('any')
url="http://packages.python.org/watchdog/index.html"
license=('Apache')
depends=('python2' 'python2-yaml' 'python2-argh' 'python2-pathtools-git' 'python2-brownie')
source=(http://pypi.python.org/packages/source/w/watchdog/watchdog-${pkgver}.tar.gz)
md5sums=("137cb7516b56a4e623934eccc26e1143")

build() {
  cd "$srcdir/watchdog-$pkgver"

  python2 setup.py install --root="${pkgdir}"

}

