# Maintanier: graysky <graysky AT archlinux dot us>
pkgname=mplayer-resumer
pkgver=1.1
pkgrel=1
pkgdesc='An mplayer wrapper script that will resume playback of previously-stopped video where you left off.  Written by Bob Igo.'
arch=(any)
license=(GPL)
source=($pkgname)
url="https://wiki.archlinux.org/index.php/MPlayer#Automatic_Resuming_Where_You_Left_Off"
depends=('mplayer' 'perl')
build() {
   install -D -m755 $pkgname $pkgdir/usr/bin/$pkgname
}
sha256sums=('f48858f31f7f82dd4b55e67a6970e3071a12a54b039c551e00e3cd03c5955f1c')
