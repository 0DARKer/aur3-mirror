# Maintainer: Limao Luo <luolimao@gmail.com>

pkgname=anki-beta
pkgver=2.0
pkgrel=beta18
pkgdesc="Helps you remember facts (like words/phrases in a foreign language) efficiently. 2.0 beta version"
url='http://ankisrs.net/'
arch=('i686' 'x86_64')
license=('AGPL3')
depends=('python2-pyqt' 'mplayer' 'lame' 'portaudio')
makedepends=()
conflicts=('anki' 'ankiqt-git')
source=("http://ankisrs.net/download/mirror/beta/anki-${pkgver}-${pkgrel}.tgz")
sha256sums=(
    '8c09969b795e74c7a7ae65a2a0407d8d406b597599303ef2bd1bbe4de43d4078')
sha512sums=(
    'e7d64943e40ebd1b4528f5e78a81305236ac295bc8439cd0208252ac9460c2499f1e9bbfffb01c63c1af71bd484886cb50089d22f44602a3b6120c8f7a32da16')

build() {
    cd $srcdir/anki-$pkgver/
    install -dm755 $pkgdir/usr/share/man/man1/
    install -dm755 $pkgdir/usr/share/pixmaps/
    install -dm755 $pkgdir/usr/local/bin/  
    install -dm755 $pkgdir/usr/share/anki/
    install -dm755 $pkgdir/usr/share/applications/
    cp -av * $pkgdir/usr/share/anki/
    cd $pkgdir/usr/share/anki/ && (\
	mv anki $pkgdir/usr/local/bin/;\
	mv anki.xpm anki.png $pkgdir/usr/share/pixmaps/;\
	mv anki.desktop $pkgdir/usr/share/applications/;\
	mv anki.1 $pkgdir/usr/share/man/man1/)
}
