# Contributor: Mike Redd <mredd@0tue0.com>
pkgname=dropbox-uploader-bash
_pkgname=dropbox_uploader
pkgver=0.6
pkgrel=1
pkgdesc='Dropbox Uploader is a BASH script which can be used to upload files to Dropbox an online file sharing  synchronization and backup service.'
arch=('i686' 'x86_64')
url="http://www.andreafabrizi.it/?dropbox_uploader"
license=('GPL')
depends=('bash' 'curl')
install=($_pkgname.install)
source=(http://www.andreafabrizi.it/download.php?file=$_pkgname.sh)
md5sums=('9a781e3b1bdd438eccc8afcf85dd6c41')

build() {
        cd $srcdir
        sed -i 's/LOGIN_EMAIL="user@domain.com"/LOGIN_EMAIL=""/g' download.php?file=$_pkgname.sh
        install -D -m 755 ${srcdir}/download.php?file=$_pkgname.sh ${pkgdir}/usr/bin/$_pkgname
        # deleting left over file
        rm download.php?file=$_pkgname.sh
}
# vim:syntax=sh
