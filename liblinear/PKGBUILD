# Contributor: jiuren <qiuwei1987@gmail.com>
pkgname=liblinear
pkgver=1.7
pkgrel=1
pkgdesc="A Library for Large Linear Classification"
arch=(x86_64 i686)
url="http://www.csie.ntu.edu.tw/~cjlin/libsvm/"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=('python' 'java-environment')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://www.csie.ntu.edu.tw/~cjlin/cgi-bin/liblinear.cgi?+http://www.csie.ntu.edu.tw/~cjlin/liblinear+tar.gz" "liblinear.patch")
noextract=()
md5sums=('5745581144f6dc32593050e1f3286da7'
         'e23f1a58033d28f716cc4e5e0a9fa1b7')
build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np0 -i ${srcdir}/liblinear.patch
  make || return 1
  install -D -m755 train $pkgdir/usr/bin/liblinear-train
  install -D -m755 predict $pkgdir/usr/bin/liblinear-predict
}
