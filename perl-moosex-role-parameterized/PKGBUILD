pkgname='perl-moosex-role-parameterized'
pkgver='0.19'
pkgrel='1'
pkgdesc="roles with composition parameters"
arch=('any')
url='http://search.cpan.org/dist/MooseX-Role-Parameterized'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-moose' 'perl-test-exception>=0.27')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/S/SA/SARTAK/MooseX-Role-Parameterized-0.19.tar.gz')
md5sums=('24f3fb3d30a92d3eb3abe7ac5cc537d9')

build() {
  DIST_DIR="${srcdir}/MooseX-Role-Parameterized-0.19"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

