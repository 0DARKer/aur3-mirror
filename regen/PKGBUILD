# Contributor: KillaB <xGenoBlast@gmail.com>

pkgname=regen
pkgver=0.95
pkgrel=4
pkgdesc="An accuracy focused emulator for Sega Genesis/Mega Drive"
arch=("i686" "x86_64")
url="http://aamirm.hacking-cult.org/index_files/regen.htm"
license=("unknown")
[ "$CARCH" = "i686" ] && depends=("gtk2>=2.10" "sdl>=1.2.11" "libpng12")
[ "$CARCH" = "x86_64" ] && depends=("lib32-gtk2>=2.10" "lib32-sdl>=1.2.11" "lib32-libpng12")
options=(!strip)
source=("http://aamirm.hacking-cult.org/regen/regen-gtk-${pkgver}.tar.bz2"
	"regen.desktop" "regen_icon.png")
md5sums=("ec38384f3beaceaf72797c239aa4834e" "bf8495d681e12d3d8520c8338ad6c1f6"
	"d88da0445234b85cc7521cc0313e57b3")

build() {
	install -D "$srcdir/regen" "$pkgdir/usr/bin/regen"
	install -D "$srcdir/regen.desktop" "$pkgdir/usr/share/applications/regen.desktop"
	install -D "$srcdir/regen_icon.png" "$pkgdir/usr/share/pixmaps/regen_icon.png"
}

