pkgname=ganglia-web
pkgver=3.5.6
pkgrel=1
pkgdesc="Web front-end to Ganglia (see ganglia package)"
arch=('any')
url="http://ganglia.sourceforge.net/"
license=('BSD')
depends=('ganglia')
options=('!libtool' '!strip')
install='ganglia-web.install'
source=("http://downloads.sourceforge.net/ganglia/$pkgname-$pkgver.tar.gz"
        'http://code.jquery.com/jquery-1.9.1.min.js'
        'configuration.patch')
md5sums=('dbcfc81793f7c777c13f27d4836e1119'
         '397754ba49e9e0cf4e7c190da78dda05'
         '09071dd5e5f671c49a7f49e213563b6d')

package() {
  cd "$srcdir/$pkgname-$pkgver"

  for patch in $srcdir/*.patch; do
    msg2 "Applying patch $(basename $patch)"
    patch -Np1 < $patch
  done

  cp "$srcdir/jquery-1.9.1.min.js" js/

  mkdir -p "$pkgdir/usr/share/webapps"
  cp -a . "$pkgdir/usr/share/webapps/ganglia"
}
