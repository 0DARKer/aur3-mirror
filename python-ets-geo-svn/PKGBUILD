# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-geo-svn
pkgver=21756
pkgrel=1
pkgdesc="Enthought Geophysics Tool Suite."
arch=('i686' 'x86_64')
url="http://code.enthought.com/"
license=('BSD')
depends=('python' 'python-ets-traits-svn' 'python-ets-blockcanvas-svn')
makedepends=('subversion' 'gcc>=3.4' 'setuptools')
options=(!emptydirs)

_svnmod=Geo
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

