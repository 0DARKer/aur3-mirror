# Maintainer: Daniel Strandberg <esodax!nospam!@gmail.com>

pkgname=ccglue
pkgver=0.3.1
pkgrel=1
pkgdesc="Generate cross-reference tag files for CCTree from a cscope database"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/ccglue/"
license=('GPL3')
depends=('vim-cctree')
source=(http://downloads.sourceforge.net/project/ccglue/src/ccglue-release-$pkgver.tar.gz)
md5sums=('cdee86a72c1fa690e709215cb56cc501')

build() {
  cd "$srcdir/release-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/release-$pkgver"

  make DESTDIR="$pkgdir" install
}

