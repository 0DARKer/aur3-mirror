# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=f2fs-tools
pkgver=1.1.0
pkgrel=2
pkgdesc="Tools for Flash-Friendly File System (F2FS)"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/f2fs-tools/"
license=('GPL')
#source=("http://sourceforge.net/projects/${pkgname}/files/${pkgname}-${pkgver}.tar.gz")

# Just a temporary link, die tarball has been removed from project page.
# Let's see how long the mirror has it...
source=("http://download.polytechnic.edu.na/pub4/download.sourceforge.net/pub/sourceforge/f/project/f2/${pkgname}/${pkgname}-${pkgver}.tar.gz")

build() {
	cd ${srcdir}/${pkgname}-${pkgver}/

	autoreconf -fi
	./configure --prefix=/usr
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}/

	make DESTDIR="${pkgdir}/" install
}

sha256sums=('afd774b80f73721f2c4300c0b4780a24b705b8328df229f3ae37315c8bfbff1d')
