pkgname=supercollider-with-nova-qt-plugins-git
pkgver=20101219
pkgver_plugins=453
pkgrel=1
pkgdesc="An environment and programming language for real time audio synthesis and algorithmic composition. Extended package with SC3-Plugins, SuperNova Server and Qt GUI. Also wiimote support and AY plugin enabled."
url="http://supercollider.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('jack' 'fftw' 'avahi' 'ruby' 'icu' 'gcc-libs-multilib')
makedepends=('git' 'cmake' 'libsndfile>=1.0' 'emacs' 'qt' 'cwiid' 'vim' 'gedit' 'gcc>=3.0' 'pkgconfig>=0.14.0' 'alsa-lib')
conflicts=('supercollider')
provides=('supercollider')

source=()
md5sums=()
install=sc3.install

_gitroot="git://github.com/jleben/SuperCute.git"
_gitname="SuperCute"

# For the Plugins
_gitroot2="git://sc3-plugins.git.sourceforge.net/gitroot/sc3-plugins/sc3-plugins"
_gitname2="sc3-plugins"


build() {
  cd $srcdir
  msg "Connecting to GIT server...."  

  if [ -d $_gitname ] ; then
    (cd $_gitname && git pull origin)
    msg "The local files are updated."
    git checkout supernova	
  else
    git clone $_gitroot
    git checkout supernova
  fi
  
  msg "GIT checkout done or server timeout"
  msg "Starting built of supercollider-git (supernova branch)"
  msg "Starting make..."

  cp -r $_gitname $_gitname-build
  cd $_gitname-build/

  cmake -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir/ install || return 1
  
  rm -rf $srcdir/$_gitname2-build


## -------------SC3-plugins----------------- ##

  msg "Done building SuperNova Server"
  msg "Starting built of SC3-Plugins"

  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $_gitname2 ] ; then
    (cd $_gitname2 && git pull origin)
    msg "The local files are updated."
  else
    git clone $_gitroot2
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r $_gitname2 $_gitname2-build
  cd $_gitname2-build

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DSC_PATH=$srcdir/SuperCute-build/ -DSN_PATH=$srcdir/SuperCute-build/ -DAY=1 -DSUPERNOVA=1|| return 1
  make || return 1
  make DESTDIR=$pkgdir/ install || return 1

  rm -rf $srcdir/$_gitname2-build
}
