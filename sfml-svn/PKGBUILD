# Contributor: Dustin Mays <dork.fish.wat@gmail.com>

pkgname=sfml-svn
pkgver=1057
pkgrel=1
pkgdesc="A simple, fast, cross-platform, and object-oriented multimedia API."
arch=('i686' 'x86_64')
url=http://sfml-dev.org
license=('zlib')
depends=('libsndfile' 'openal' 'glew' 'freetype2')
conflicts=('sfml')
provides=('sfml')
source=()
md5sums=()

_svntrunk=https://sfml.svn.sourceforge.net/svnroot/sfml/trunk
_svnmod=sfml

build() {
  cd ${srcdir}

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver && cd ${srcdir})
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build
  find ./ -name ".svn" | xargs rm -Rf

  msg "Starting make."
  make || return 1
  make DESTDIR=${pkgdir}/usr install || return 1

  rm -rf ${srcdir}/$_svnmod-build
}

# vim:syntax=sh
