pkgname=vala-devel
_pkgname=vala
pkgver=0.12.1
pkgrel=1
pkgdesc="Compiler for the GObject type system (development release)"
arch=('i686' 'x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2')
makedepends=('libxslt')
options=('!libtool')
provides=("vala=${pkgver}")
conflicts=('vala')
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgname}/0.12/${_pkgname}-${pkgver}.tar.bz2)
sha256sums=('d9a2be21bb8ab88eab838e7f3a4d0aaa2a1fddf35615dca32bef6a0051f58ea8')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./configure --prefix=/usr --enable-vapigen
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
