# Contributor: Timm Preetz <timm@preetz.us>
# Contributor: Christer Nissen <christer.nissen@gmail.com>
pkgname=vala-devel
_pkgname=vala
pkgver=0.11.6
pkgrel=1
pkgdesc="Compiler for the GObject type system (development release)"
arch=('i686' 'x86_64')
url="http://live.gnome.org/Vala"
license=('LGPL')
depends=('glib2')
makedepends=('libxslt')
options=('!libtool')
provides=("vala=${pkgver}")
conflicts=('vala')
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgname}/0.11/${_pkgname}-${pkgver}.tar.bz2)
sha256sums=('4c5b715d47b3426e670c7a9c5d6050e3a436819aba6902d71c16f2267c8d187b')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./configure --prefix=/usr --enable-vapigen
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
