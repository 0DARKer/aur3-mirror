pkgname=mba6x_bl-dkms
_pkgname=mba6x_bl
pkgver=1
pkgrel=2
pkgdesc="Backlight for mba6x to fix suspend/resume brightness"
url='https://github.com/patjak/mba6x_bl'
arch=('i686' 'x86_64')
license=('GPL2')
depends=('dkms')
install=mba6x_bl-dkms.install
conflicts=('mba6x_bl')
source=("https://raw.github.com/patjak/mba6x_bl/master/mba6x_bl.c"
	'https://raw.github.com/patjak/mba6x_bl/master/Makefile'
	'https://raw.github.com/patjak/mba6x_bl/master/dkms.conf'
    'http://www.frankshin.com/AUR/mba6x_bl/mba6x_bl-dkms.conf'
    'http://www.frankshin.com/AUR/mba6x_bl/mba6x_bl-dkms.install')
sha1sums=('8adfeecbe35fa4ee2412c41ad5c7d160c4b0c201'
    'ee30aee2d471accd8874de4dbf820097e03f68d8'
    '1066439a877657891263cb1231a8a4b42a9cd607'
    'e8ea55ca2d82e24dac1f9df94b341b8e5d478d9b'
    'aa88cd6bce0bb8786b16dc90f1c60aa6e677011c')
backup=('etc/modules-load.d/mba6x_bl-dkms.conf')

package() 
{
	cd "${srcdir}"
	
	mkdir -p ${pkgdir}/usr/src/${_pkgname}-${pkgver}
	cp -RL * ${pkgdir}/usr/src/${_pkgname}-${pkgver}
	install -D -m 644 mba6x_bl-dkms.conf "${pkgdir}"/etc/modules-load.d/mba6x_bl-dkms.conf
}
