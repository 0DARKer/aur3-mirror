# Maintainer: wido <widomaker2k7@gmail.com>

pkgname=sat-xmpp
_realname=sat
pkgver=0.1.1
pkgrel=3
pkgdesc="a Client XMPP Jabber"
url="http://www.goffi.org/"
arch=('any')
depends=('wxpython' 'pygobject' 'python2' 'python2-wokkel-muc-hg' 'python-beautifulsoup' 'python2-urwid-satext' 'python-progressbar')
makedepends=()
license=('GPLv3')
install=($pkgname.install)
source=(ftp://ftp.goffi.org/${_realname}/${_realname}-${pkgver}.tar.bz2)
md5sums=('17044412ba1c3ce1c9469c960644bc07')

build() {
    cd ${srcdir}/${_realname}-${pkgver}
    python2 setup.py build
    python2 setup.py install --root=${pkgdir}/

    # Patch for TAP_PATH
    sed -i "s|^TAP_PATH.*|TAP_PATH=/usr/lib/python2.7/site-packages/sat/|" ${pkgdir}/usr/lib/python2.7/site-packages/sat/sat.sh
}
