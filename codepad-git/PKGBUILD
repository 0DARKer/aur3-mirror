pkgname=codepad-git
_gitname=codepad
pkgver=0.1.1
pkgrel=1
pkgdesc="A codepad.org pastebin tool with options for syntax highlighting"
arch=(i686 x86_64)
license=('GPLv2')
depends=('python')
url=("https://github.com/kevr/$_gitname")
md5sums=("SKIP")

package() {

  if [[ ! -d "$srcdir/$_gitname" ]]; then
    git clone "$url"
  fi

  cd "$srcdir/$_gitname"

  install -D -m755 "$_gitname" "$pkgdir/usr/bin/$_gitname"
  install -D -m644 "LICENSE" "$pkgdir/usr/share/licenses/$_gitname/LICENSE"
}
