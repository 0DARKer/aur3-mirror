# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-blockcanvas-svn
pkgver=25951
pkgrel=1
pkgdesc="Numerical Modeling,"
arch=('i686' 'x86_64')
url="http://code.enthought.com/projects/block_canvas.php"
license=('BSD')
depends=('python2' 'python-numpy>=1.1' 'python-configobj' 'docutils'
         'python-imaging' 'python-ets-enthoughtbase-svn'
         'python-ets-apptools-svn' 'python-ets-chaco-svn'
         'python-ets-devtools-svn' 'python-ets-enable-svn'
         'python-ets-scimath-svn' 'python-ets-traits-svn'
         'python-ets-traitsgui-svn')
makedepends=('subversion' 'gcc>=3.4' 'python2-distribute')
options=(!emptydirs)

_svnmod=BlockCanvas
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

