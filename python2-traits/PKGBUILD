# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-traits
pkgver=3.6.0
_githubtag=22ad362
pkgrel=1
pkgdesc="Explicitly typed attributes for Python"
arch=('any')
url="https://github.com/enthought/traits"
license=('BSD')
depends=('python2' 'python2-enthoughtbase' 'python2-numpy>=1.1')
makedepends=('python2-distribute' 'gcc>=3.4')
conflicts=('python-enthought-traits' 'python2-traits-git' 'python-ets-traits-svn')
options=(!emptydirs)

source=("https://github.com/enthought/traits/tarball/${pkgver}")
md5sums=('f4894c59e63b9cb42b4109608fc0d062')

build() {
  cd "$srcdir/enthought-traits-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

