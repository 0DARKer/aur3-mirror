# Contributor: Fabien COUTANT

pkgname=glade-gtk2
pkgver=3.8.3
pkgrel=1
pkgdesc='User interface builder for GTK+ and GNOME. (latest version for GTK2)'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('gtk2' 'libxml2' 'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('intltool' 'python2' 'gobject-introspection' 'python2-gobject2')
optdepends=('devhelp: Integrated docs'
			'python2: Python widgets support')
options=('!libtool')
url='http://glade.gnome.org/'
install=glade.install
source=("http://ftp.gnome.org/pub/GNOME/sources/glade3/3.8/glade3-$pkgver.tar.xz")
sha256sums=('84bb2d7f782f203e4aab923e47db8d22529229b13e59570945261611c63941d6')

build() {
  cd "$srcdir/glade3-$pkgver"
  PYTHON=/usr/bin/python2 ./configure --prefix=/usr
  make V=1
}

package() {
  cd "$srcdir/glade3-$pkgver"
  make DESTDIR=$pkgdir install
  rm -f ${pkgdir}/usr/share/glade3/catalogs/*.in
}

