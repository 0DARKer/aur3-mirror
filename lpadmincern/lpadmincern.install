restartCups(){
    echo -n "Restart cups... "
    lpadmincern -u
    echo "Done."
    echo 'Use lpadmincern --add ${printer} to add a printer. Get the list of printers from'
    echo "https://printservice.web.cern.ch/printservice/UserTools/PrinterList.aspx"
}


post_install() {
    restartCups
}

post_upgrade() {
    restartCups
}
