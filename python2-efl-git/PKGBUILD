# Maintainer: Doug Newgard <scimmia22 at outlook dot com>

pkgname=python2-efl-git
_pkgname=python-efl
pkgver=1.7.99.198.0fae488
pkgrel=1
pkgdesc="Python2 bindings for the Enlightenment Foundataion Libraries"
arch=('i686' 'x86_64')
url="http://www.enlightenment.org"
license=('LGPL3')
depends=('elementary-git' 'python2-dbus')
provides=('python2-efl-svn')
conflicts=('python2-efl-svn')
makedepends=('git' 'cython2')
source=("git://git.enlightenment.org/bindings/python/$_pkgname.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"

  echo $(awk -F \" '/version =/ {print $2}' setup.py).$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$_pkgname"

  python2 setup.py build
}

package() {
  cd "$srcdir/$_pkgname"
  
  python2 setup.py install --root="$pkgdir"
}
