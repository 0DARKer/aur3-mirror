# Maintained by Procyon

pkgname=kingbash
pkgver=43
downloadname_kingbash="raw.php?i=6jTTLVzV" #main script
downloadname_kbdmenu="raw.php?i=MSJxSvmG" #dmenu clone
pkgrel=1
pkgdesc="Better tab completion for bash with a menu."
arch=(any)
url="https://bbs.archlinux.org/viewtopic.php?id=101010"
depends=(bash)
license=(none)
install=$pkgname.install
source=(http://pastebin.com/$downloadname_kingbash
	http://pastebin.com/$downloadname_kbdmenu)
sha1sums=(9f38c5c5cb6a7a58d89d4154784b1201eea03cd4
	  e4cd00f2f6e9a24b364cac75487488f01329a647)

build() {
  cd "${srcdir}"
  sed -i 's/\r$//' "$downloadname_kingbash"
  sed -i 's/\r$//' "$downloadname_kbdmenu"
  chmod +x "$downloadname_kbdmenu"
  install -D -m 644 "$downloadname_kingbash" "${pkgdir}/usr/bin/kingbash"
  install -D -m 755 "$downloadname_kbdmenu" "${pkgdir}/usr/bin/kbdmenu"
}
