pkgname=antlr_python_runtime
pkgver=3.1.3
pkgrel=1
pkgdesc="Python runtime for the ANTLR parsing library"
url="http://www.antlr.org/"
arch=("i686" "x86_64")
license=("BSD")
depends=('bash' 'python2')
makedepends=('python2')
source=(http://www.antlr.org/download/Python/${pkgname}-${pkgver}.tar.gz)
md5sums=('ef7d734646a06c0585d87de2639ad418')
options=(!libtool)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  python2 setup.py install --root ${pkgdir} || return 1
}

