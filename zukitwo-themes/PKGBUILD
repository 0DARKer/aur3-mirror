pkgname=zukitwo-themes
pkgver=2011.05.31_3
pkgrel=1
pkgdesc="Nice gtk3, gtk2, metacity, gnome-shell themes"
arch=('any')
url="http://gnome-look.org/content/show.php/Zukitwo?content=140562"
license=('GPL')
optdepends=('gtk-engine-murrine: for gtk2 themes'
            'gtk-engines: for gtk2 themes'
            'gnome-themes-standard: for gtk3 themes')
source=(http://gnome-look.org/CONTENT/content-files/140562-Zukitwo.zip)
md5sums=('7d6728c25cb1d99063fa4f2c45b3270c')


package() {
  find Zukitwo*/ -not -name *Thumbs.db -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}

