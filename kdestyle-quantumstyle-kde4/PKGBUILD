# Contributor: maddien <martinstitz@gmx.de>
pkgname=kdestyle-quantumstyle-kde4
pkgver=RC7
pkgrel=2
pkgdesc="An SVG themeable style for Qt4 and KDE4."
arch=('i686' 'x86_64')
url="http://kde-look.org/content/show.php/QuantumStyle?content=101088"
license="GPL"
depends=('qt>=4.0')
makedepends=()
conflicts=()
source=(http://saidlankri.free.fr/QuantumStyle-$pkgver.tar.bz2)
md5sums=('46206b3fd01b1e540ef9759570f1c546')

build() {
  mkdir -p $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/usr/lib/qt/plugins/styles

  cd $startdir/src/QuantumStyle
  
  qmake || return 1
  make || return 1
  
  cp $startdir/src/QuantumStyle/style/libquantumstyle.so $startdir/pkg/usr/lib/qt/plugins/styles/libquantumstyle.so || return 1
  cp $startdir/src/QuantumStyle/themebuilder/qsthemebuilder $startdir/pkg/usr/bin/qsthemebuilder || return 1
}