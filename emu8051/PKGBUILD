# Maintainer: Arthur Zamarin <arthurzam@gmail.com> 

pkgname=emu8051
pkgver=1.1.1
pkgrel=1
pkgdesc="Emulator and simulator for 8051 microcontrollers"
arch=(i686 x86_64)
url="http://www.hugovil.com/fr/emu8051/index.html"
license=('GPL2')
depends=('gtk2')
source=("http://ftp.us.debian.org/debian/pool/main/e/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz")
sha256sums=('4bd6bd0d3803c2dbdef872183d5140be3001fc27320db901c893f822619d7b3e')

prepare() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure "--prefix=$pkgdir/usr/"
}

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make install
}
