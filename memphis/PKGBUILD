# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>
pkgname=memphis
pkgver=0.2.3
pkgrel=1
pkgdesc="A map-rendering application and library"
arch=('i686' 'x86_64')
url="http://trac.openstreetmap.ch/trac/memphis/wiki"
license=('LGPL')
depends=('cairo' 'glib2')
options=('!libtool')
source=("$pkgname-$pkgver.tar.gz::http://trac.openstreetmap.ch/trac/memphis/downloads/5")
md5sums=('dbed61f37d07801c1f660c0b5a5d81bc')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
