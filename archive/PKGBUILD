# Contributor: Angel 'angvp' Velasquez <angvp[at]archlinux.com.ve> 
pkgname=archive
pkgver=2.1
pkgrel=4
pkgdesc="Archive is a very easy to use program for creating and extracting file archives."
url="http://rox.sourceforge.net/phpwiki/index.php/Archive"
depends=('gtk2' 'rox-lib')
arch=('i686' 'x86_64')
license=('GPL')
source=(http://downloads.sourceforge.net/sourceforge/rox/$pkgname-$pkgver.tar.bz2 \
        archive)
md5sums=('0196e7cb37b44043097b90ed86e84b71'\
         '1dfe04c771f90c531770ead884599f45' )

build() {
  mkdir -p $pkgdir/usr/share/
  cp -R $srcdir/$pkgname-$pkgver/Archive $pkgdir/usr/share/ || return 1
  install -D -m755 $srcdir/archive $pkgdir/usr/bin/archive || return 1
}
