pkgname=m4ri
pkgver=20090617
pkgrel=1
pkgdesc="Algorithms for linear algebra over Z/2Z"
arch=('i686' 'x86_64')
url="http://m4ri.sagemath.org/"
license=('GPL')
depends=()
#source=(http://m4ri.sagemath.org/downloads/m4ri-$pkgver.tar.gz)
source=(http://www.sagemath.org/packages/standard/libm4ri-$pkgver.spkg)

build() {
  cd "$startdir/src/libm4ri-$pkgver/src"

  ./configure --prefix=/usr --with-openmp || return 1
  make || return 1
  make install DESTDIR="$pkgdir" || return 1
}

md5sums=('3dc8004b63682a3b68e7f82c888f9612')
