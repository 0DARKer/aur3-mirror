# Maintainer: Mizuchi <ytj000+AUR@gmail.com>

_name=undotree
pkgname=vim-$_name
pkgver=4.1.0
pkgrel=1
_scriptid=18552
pkgdesc="Display your undo history in a graph."
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=4177"
license=('BSD')
groups=('vim-plugins')
makedepends=('markdown')
source=($_name-$pkgver.zip::http://www.vim.org/scripts/download_script.php?src_id=$_scriptid)
md5sums=('ee301cb7cb892be371ef147f226faee9')

package() {
    cd $srcdir
    rm $_name-$pkgver.zip
    mkdir -p $pkgdir/usr/share/vim/
    mv * $pkgdir/usr/share/vim/vimfiles
    install -Dm644 $pkgdir/usr/share/vim/vimfiles/README.md \
                   $pkgdir/usr/share/doc/vim-undotree/README.md
    rm $pkgdir/usr/share/vim/vimfiles/README.md 
    cd $pkgdir/usr/share/doc/vim-undotree/
    markdown README.md > index.html
}
