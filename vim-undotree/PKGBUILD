# Maintainer: Mizuchi <ytj000+AUR@gmail.com>

_name=undotree
pkgname=vim-$_name
pkgver=4.3
pkgrel=1
_scriptid=19541
pkgdesc="Display your undo history in a graph."
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=4177"
license=('BSD')
groups=('vim-plugins')
makedepends=('markdown')
source=($_name-$pkgver.zip::http://www.vim.org/scripts/download_script.php?src_id=$_scriptid)
md5sums=('de7d4bcecf9c54a4c8d10c02c2423c45')

package() {
    cd $srcdir
    rm $_name-$pkgver.zip

    cd *
    install -Dm644 plugin/undotree.vim \
                   $pkgdir/usr/share/vim/vimfiles/plugin/undotree.vim
    install -Dm644 syntax/undotree.vim \
                   $pkgdir/usr/share/vim/vimfiles/syntax/undotree.vim
    install -Dm644 README.md \
                   $pkgdir/usr/share/doc/vim-undotree/README.md
    cd $pkgdir/usr/share/doc/vim-undotree/
    markdown README.md > index.html
}
