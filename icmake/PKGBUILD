# Maintainer: Andreas B. Wagner <AndreasBWagner@gmail.com>
# Contributor: Jeff Mickey <jeff@archlinux.org>
pkgname=icmake
pkgver=7.12.5
pkgrel=2
pkgdesc="Intelligent C-like MAKE-r."
arch=('i686' 'x86_64')
url="http://icmake.sourceforge.net/"
license=('GPLv3')
depends=('glibc')
source=("http://kent.dl.sourceforge.net/project/${pkgname}/${pkgname}/${pkgver}/${pkgname}_${pkgver}.orig.tar.gz")
md5sums=('33639c1c1905fb5ed7307b698d38104c')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  /bin/sh icm_bootstrap / || return 1
  /bin/sh icm_install all ${pkgdir} || return 1	  
}
