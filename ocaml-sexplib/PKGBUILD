# Contributor: Sylvester Johansson <scj(at)archlinux(dot)us>
# Contributor: Sergei Lebedev <superbobry@gmail.com>
pkgname=ocaml-sexplib
pkgver=7.0.2
pkgrel=1
pkgdesc="Automated code generation for converting OCaml-values to S-expressions"
arch=('i686' 'x86_64')
url="http://ocaml.janestcapital.com/?q=node/13"
license=('LGPL')
depends=('ocaml' 'ocaml-type-conv')
makedepends=('ocaml-findlib')
options=(!strip !makeflags)
install=ocaml-sexplib.install
source=(http://www.janestreet.com/ocaml/${pkgname/ocaml-/}-$pkgver.tar.gz)
md5sums=('baaeca46c492de731954d66722441fe5')

build() {
  cd "$srcdir/${pkgname/ocaml-/}-${pkgver}"

  ocaml setup.ml -configure --prefix /usr --destdir ${pkgdir} --disable-tests
  ocaml setup.ml -build || return 1
}

package(){
  cd "$srcdir/${pkgname/ocaml-/}-${pkgver}"
  mkdir -p $pkgdir$(ocamlfind printconf destdir)/sexplib
  export OCAMLFIND_DESTDIR="$pkgdir$(ocamlfind printconf destdir)"
  export OCAMLFIND_LDCONF=ignore
  make install
  install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

