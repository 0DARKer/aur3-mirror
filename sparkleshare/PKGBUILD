# Maintainer: Jarek Sedlacek <JarekSedlacek@gmail.com>

pkgname=sparkleshare
pkgver=0.8.2
pkgrel=1
pkgdesc="An open-source clone of Dropbox, written in Mono"
arch=('i686' 'x86_64')
url="http://www.sparkleshare.org/"
license=('GPL3')
depends=('mono' 'gtk-sharp-2' 'ndesk-dbus' 'ndesk-dbus-glib' 'intltool' 'nant' 'webkit-sharp' 'notify-sharp-svn' 'xdg-utils' 'openssh')
options=('!libtool')
source=("https://github.com/hbons/SparkleShare/tarball/$pkgver")
hash="dc70806"

build() {
    mkdir -p $pkgdir/usr/share/sparkleshare/html
        mkdir -p $pkgdir/usr/share/sparkleshare/pixmaps

        cd $srcdir/hbons-SparkleShare-$hash

        ./autogen.sh --prefix=/usr --disable-user-help
        make
}

package(){
    cd $srcdir/hbons-SparkleShare-$hash
        make -s DESTDIR=${pkgdir} install
}
md5sums=('cca46154f80ff22a392ad5634880b43f')

