
pkgname=sparkleshare
pkgver=0.4.2
pkgrel=1
pkgdesc="An open-source clone of Dropbox, written in Mono"
arch=('i686' 'x86_64')
url="http://www.sparkleshare.org/"
license=('LGPL')
depends=('mono' 'gtk-sharp-2' 'ndesk-dbus' 'ndesk-dbus-glib' 'intltool' 'nant-nightly' 'webkit-sharp' 'notify-sharp-svn' 'xdg-utils' 'openssh')
options=('!libtool')

# kind of hacky for now, the official release tarball is missing a directory, lets steal it from opensuse
source=("https://github.com/downloads/hbons/SparkleShare/sparkleshare-$pkgver.tar.gz"
	"https://api.opensuse.org/public/source/GNOME:Apps/sparkleshare/help-C.tar.bz2?rev=093e95c682fb2b35c638459a7f4be310&"
	)

conflicts=(sparkleshare-git)

build() {
   pwd
   ls
   set -x
    mv C $srcdir/$pkgname-${pkgver//_/-}/help
    mkdir -p $pkgdir/usr/share/sparkleshare/html
    mkdir -p $pkgdir/usr/share/sparkleshare/pixmaps

    cd $srcdir/$pkgname-${pkgver//_/-}

    ./configure --prefix=/usr
    make || return 1
    make -s DESTDIR=${pkgdir} install
    sed -i 's/ssh-agent/dbus-launch ssh-agent/' $pkgdir/usr/bin/sparkleshare
}
md5sums=('12923c0e7e917636fa1796457b445e5c'
         'edfeb3ee3c31e2cbe7af197b327b4ae1')
