# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-ipc-sharelite
pkgver=0.17
pkgrel=1
pkgdesc="Lightweight interface to shared memory"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~andya/IPC-ShareLite-$pkgver/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/A/AN/ANDYA/IPC-ShareLite-$pkgver.tar.gz")
md5sums=('54c7aa08dc065b6c946c48491d33450d')

build() {
	cd "$srcdir/IPC-ShareLite-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/IPC-ShareLite-$pkgver"
	make install DESTDIR="$pkgdir"
}
