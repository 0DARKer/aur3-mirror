# Maintainer: Ricky Thomson <punkrockunix at gmail dot com>
# Based on https://aur.archlinux.org/packages/glade2/PKGBUILD

pkgname=glade3-gtk2
pkgver=3.8.0
pkgrel=1
pkgdesc="User Interface Designer for GTK2 applications."
url="http://glade.gnome.org"
license="GPL"
source=(http://ftp.gnome.org/pub/GNOME/sources/glade3/3.8/glade3-${pkgver}.tar.gz)
depends=('gtk2' 'libglade')
makedepends=('pkgconfig')
conflicts=('glade3')
arch=(i686 x86_64)
md5sums=('0eb60b006d1460a03955ef9be6cb0c52')

build() {
	cd $startdir/src/glade3-${pkgver}
	./configure --prefix=/usr --disable-gnome
	make || return 1
	make DESTDIR=$startdir/pkg install

	find ${startdir}/pkg -name "*.la" -exec rm {} \;
}

