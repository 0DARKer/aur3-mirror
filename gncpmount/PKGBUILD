pkgname=gncpmount
pkgver=0.0.3
pkgrel=1
pkgdesc="Graphical user interface (GUI) for ncpmount"
arch=('i686' 'x86_64')
url="http://gncpmount.lipoja.net"
license=('GPL3')
groups=()
depends=('ncpfs' 'gtk2>=2.18.0')
makedepends=('gtk2>=2.18.0' 'glib2>=2.22.0' 'gettext' 'gdk-pixbuf2' 'gettext' 'gnome-common')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=ChangeLog
source=($pkgname-$pkgver.tar.gz::http://lipoja.fedorapeople.org/gncpmount/download/gncpmount-0.0.3.tar.gz)
noextract=()
md5sums=(22ed3152fad3f701bf1f00abd1414c2b) #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"
  export NOCONFIGURE=1;
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

