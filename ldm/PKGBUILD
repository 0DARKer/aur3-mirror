# Maintainer: Robin Hahling
pkgname=ldm
pkgver=0.4.1
pkgrel=1
pkgdesc="A lightweight device mounter"
arch=('i686' 'x86_64')
url="https://github.com/LemonBoy/ldm"
license=('MIT')
depends=('udev')
provides=('ldm')
conflicts=('ldm-git')
source=(http://github.com/LemonBoy/${pkgname}/archive/v${pkgver}.tar.gz)
install=ldm.install
md5sums=('6fef50c9db9cc722806d0a789309dc2e')

build() {
  # required until a fix is found
  export LDFLAGS=""

  cd ${pkgname}-${pkgver}
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make PREFIX="/usr" DESTDIR="${pkgdir}" install

  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
