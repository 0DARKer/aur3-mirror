pkgname=squidguard
pkgver=1.2.0
pkgrel=1
pkgdesc=" An ultrafast and free filter, redirector and access controller for Squid "
url="http://www.squidguard.org/"
license=""
depends=(db)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://ftp.teledanmark.no/pub/www/proxy/squidGuard/squidGuard-$pkgver.tar.gz http://ftp.debian.org/debian/pool/main/s/squidguard/squidguard_1.2.0-5.diff.gz)
md5sums=('c6e2e9112fdbda0602656f94c1ce31fd' '3f64c431a2585e04b9a2e1e958a8b68c')


build() {
	cd $startdir/src/
	mv squidGuard-$pkgver squidguard-$pkgver
        patch -p0 <squidguard_1.2.0-5.diff    
     	cd squidguard-$pkgver	
	./configure --prefix=/usr
	 make || return 1
	 make DESTDIR=$startdir/pkg install
}
	
