# Maintainer: willemw <willemw12@gmail.com>

_pkgname=terra
pkgname=$_pkgname-bzr
pkgver=53
pkgrel=1
pkgdesc="Python / GTK3 drop-down tiling terminal emulator"
arch=('any')
url="https://launchpad.net/terra"
license=('GPL3')
depends=('python2-dbus' 'python2-gobject' 'vte3')
makedepends=('bzr' 'python2-distutils-extra')
provides=($_pkgname)
conflicts=($_pkgname)
source=($_pkgname::bzr+https://code.launchpad.net/terra/trunk)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  bzr revno
}

package() {
  cd "$srcdir/$_pkgname"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

