# Contributor: sekret, mail=$(echo c2VrcmV0QHBvc3Rlby5zZQo= | base64 -d)
# Maintainer: Aaditya Bagga <aaditya_gnulinux@zoho.com>

pkgname=nbwmon
pkgver=0.4.3
pkgrel=1
pkgdesc="ncurses bandwidth monitor"
arch=('i686' 'x86_64')
url="https://github.com/defer-/nbwmon"
license=('custom:MIT/X')
depends=('ncurses')
source=("https://github.com/defer-/$pkgname/archive/$pkgver.tar.gz")
md5sums=('3e13aeafba7cba4b173c5d3a6b715eb6')

build() {
	  cd "$pkgname-$pkgver"
	  make
}

package() {
	  cd "$pkgname-$pkgver"
	  make DESTDIR="$pkgdir/" install
	  install -Dm644 README "$pkgdir/usr/share/doc/$pkgname/README"
	  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
