# Maintainer: Jeremie Nevin <contact@neurovertex.eu>

pkgname=texiteasy
pkgver=0.8.0
pkgrel=1
_pkgrev="a5f8fbbec190818d48eb5a6cf4939047b4404302"
pkgdesc="Simple and Powerful Latex Editor"
arch=(any)
url="http://texiteasy.com/"
license=('GPL3')
depends=('qt4' 'poppler-qt4' 'zlib' 'texlive-core')
makedepends=('make' 'gcc')
optdepends=('texlive-lang: Support for additional charsets' 'texlive-most: Additional texlive libraries')
source=($pkgname.tar.gz::https://github.com/Bramas/texiteasy/archive/a5f8fbbec190818d48eb5a6cf4939047b4404302.tar.gz)
md5sums=('15015874868cc9793676ff0ebdfa25cc')
sha512sums=('a5ac61177f6c4d2881a1cedd5923672036c77c94238ef97e19867781542d0e99afaa04067fb1ff0ad3808867cdb4b6672ecc3d9a9c8391f8bdda4c4718cc1418')

build() {
	cd "$pkgname-$_pkgrev/source"
	qmake-qt4 $pkgname.pro
	make
}

package() {
	cd "$pkgname-$_pkgrev/source"
	make INSTALL_ROOT=$pkgdir install
	cd ..
	install -Dm644 -t $pkgdir/usr/share/texiteasy/dictionaries/ bundler_files/deb/share/texiteasy/dictionaries/*
	desktop-file-install bundler_files/deb/share/applications/texiteasy.desktop --dir=$pkgdir/texiteasy/usr/share/applications/
}