pkgname=wmclock
pkgver=1.0.12.2
pkgrel=2
pkgdesc="Simply windowmaker clock/calendar applet"
arch=('i686' 'x86_64')
url="http://www.jmknoble.net/WindowMaker/wmclock/"
license="GPL"
depends=('x-server' 'imake')
makedepends=('make')
source=(http://www.dockapps.org/download.php/id/328/$pkgname-$pkgver.tar.gz)
md5sums=('97f6e82f55f216ba724859d4652586b4')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

