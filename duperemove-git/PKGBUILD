pkgname=duperemove-git
pkgver=201.dcc7a48
pkgrel=1
pkgdesc="Btrfs extent deduplication utility"
arch=('any')
url="https://github.com/markfasheh/duperemove"
license=('GPL')
makedepends=('git')
source=("$pkgname"::'git://github.com/markfasheh/duperemove.git#branch=master')
md5sums=( 'SKIP' )

pkgver() {
  cd ${pkgname}
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}



build() {
  cd "$srcdir/$pkgname"
  [ ! -z _duperemove_xxhash ] && export USE_XXHASH=1
  make
}

package() {
  install -Dm755 $srcdir/$pkgname/duperemove $pkgdir/usr/bin/duperemove
}
