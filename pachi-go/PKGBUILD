# Maintainer: Auguste Pop <auguste [at] gmail [dot] com>

pkgname=pachi-go
_pkgalias=pachi
pkgver=8.00
_pkgcodename=shuhaku
pkgrel=2
pkgdesc="A reasonably strong engine built within a simple modular framework"
arch=('i686' 'x86_64')
url="http://pachi.or.cz/"
license=('GPL')
source=("http://repo.or.cz/w/pachi.git/snapshot/$_pkgalias-$pkgver-$_pkgcodename.zip")
md5sums=('daa47511510175b8a061fc5ed9fd4bd9')

build()
{
    cd $srcdir/$_pkgalias
    make
}

package()
{
    cd $srcdir/$_pkgalias
    install -D -d $pkgdir/usr/bin
    make DESTDIR=$pkgdir PREFIX=/usr INSTALL='/bin/install' install
}
