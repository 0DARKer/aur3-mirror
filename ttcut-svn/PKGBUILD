# Maintainer:  hydro <hydro@freenet.de>

pkgname=ttcut-svn
pkgver=240
pkgrel=1
pkgdesc="MPEG-2 cutting tool for removing commercials from demuxed DVB recordings"
arch=('i686')
url="http://ttcut.tritime.de/index.2.html"
license="GPL"
depends=('qt' 'mplayer' 'transcode')
makedepends=('subversion' 'qt' 'libmpeg2')
conflicts=('ttcut')
provides=('ttcut')

source=()
md5sums=()

_svntrunk=http://svn.berlios.de/svnroot/repos/ttcut/trunk
_svnmod=ttcut

build() {
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

#  . /etc/profile.d/qt4.sh
#  export PATH=$QTDIR/bin:$PATH

  qmake ttcut.pro -o Makefile.ttcut || return 1
  make -f Makefile.ttcut || return 1
  mkdir -p $startdir/pkg/usr/bin/
  cp ttcut $startdir/pkg/usr/bin/

  rm -rf $startdir/src/$_svnmod-build
}
