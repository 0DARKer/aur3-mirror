# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=sopcast-player
pkgver=0.5.1
pkgrel=1
pkgdesc='GUI front-end to p2p TV sopcast'
arch=('i686' 'x86_64')
url='http://code.google.com/p/sopcast-player/'
license=('GPL2')
depends=('gtk2' 'hicolor-icon-theme' 'pygtk' 'sopcast' 'vlc')
[ "$CARCH" == "x86_64" ] && depends=('bin32-sopcast' 'gtk2' 'hicolor-icon-theme' 'pygtk' 'vlc')
install=sopcast-player.install
source=(http://sopcast-player.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('17c9a06246aa7506bfa9e284426f24a9')

build() {
  cd $srcdir/$pkgname

  # Fix Makefile
  sed -i 's#PYTHON ?= $(BINDIR)/python#\02#' Makefile
  sed -i 's_$(gtk_#$(gtk_' Makefile

  # Compilation
  make
  make DESTDIR=$pkgdir install
}
