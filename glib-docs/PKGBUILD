pkgname=glib-docs
pkgver=2.29.4
pkgrel=1
pkgdesc="Documentation for Glib, GIO, GObject to be used in devhelp"
arch=("any")
license=('GPL')
url="http://developer.gnome.org/references"
source=(ftp://ftp.gnome.org/pub/gnome/sources/glib/2.29/glib-${pkgver}.tar.bz2)
md5sums=('d3a9e4530995aacf79d3573677ffa444')

build() {

  docsdir="${srcdir}/glib-${pkgver}/docs/reference"

  # Create destination dirs
  install -d ${pkgdir}/usr/share/devhelp/books/glib
  install -d ${pkgdir}/usr/share/devhelp/books/gio
  install -d ${pkgdir}/usr/share/devhelp/books/gobject

  # Install documentation to destination
  for doc in glib gio gobject
  do
    install -D -m 644 \
      ${docsdir}/${doc}/html/* \
      ${pkgdir}/usr/share/devhelp/books/${doc}
  done

}

# vim:set ts=2 sw=2 et:
