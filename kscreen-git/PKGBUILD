# Maintainer: imraro <imraro@gmail.com>

pkgname=kscreen-git
pkgver=20130125
pkgrel=1
pkgdesc="KDE's screen management software."
url="http://quickgit.kde.org/?p=kscreen.git"
license=('GPL')
arch=('i686' 'x86_64')
depends=('kdelibs' 'libkscreen-git' 'qjson')
conflicts=('kscreen')
makedepends=('git' 'cmake' 'automoc4')
provides=('kscreen')
install=kscreen-git.install

_gitroot="git://anongit.kde.org/kscreen.git"
_gitname="kscreen"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"

  msg "Starting build..."
  rm -rf "$srcdir/build"
  mkdir "$srcdir/build"
  cd "$srcdir/build"

  cmake ../$_gitname \
      -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix)
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}