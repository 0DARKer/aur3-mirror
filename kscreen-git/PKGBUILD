# Maintainer: imraro <imraro@gmail.com>

pkgname=kscreen-git
pkgver=20121226
pkgrel=1
pkgdesc="KDE's screen management software."
url="http://quickgit.kde.org/?p=kscreen.git"
license=('GPL' 'LGPL' 'FDL')
arch=('i686' 'x86_64')
depends=('kdelibs' 'libkscreen-git')
makedepends=('git' 'cmake' 'automoc4')
provides=('kscreen')

_gitroot="git://anongit.kde.org/kscreen.git"
_gitname="kscreen"

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d "${srcdir}/${_gitname}" ] ; then
    cd ${_gitname} && git pull --rebase
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."


  mkdir -p ${srcdir}
  cd ${srcdir}

  cmake -DCMAKE_INSTALL_PREFIX=$( kde4-config --prefix ) -DCMAKE_BUILD_TYPE=Release ${_gitname}

  make
  make DESTDIR=$pkgdir install
}