#Contributor: andy123 < ajs AT online DOT de >

pkgname=qtweb
pkgver=3.8.4.104
_pkgbuild=104
pkgrel=1
pkgdesc="lightweight, secure and portable browser based on qt and webkit"
arch=('i686' 'x86_64')
url=('http://qtweb.net')
license=('GPL')
depends=('qtwebkit')
makedepends=()
sha1sums=('94b1851799ec82c9a795ef01c779a25eb9891c28')
source=(http://${pkgname}.googlecode.com/files/QtWeb-b${_pkgbuild}.tar.gz)
build(){
    cd "${srcdir}/QtWeb-b104"
    qmake 
    make
}

package(){
    mkdir -p "${pkgdir}/usr/bin/"
    install ${srcdir}/QtWeb-b104/release/QtWeb ${pkgdir}/usr/bin/${pkgname}
}
