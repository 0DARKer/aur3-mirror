pkgname=tftray
pkgver=0
pkgrel=1
epoch=
pkgdesc="minimal systray"
arch=(any)
url="http://sourceforge.net/projects/tftray"
license=('GPL')
groups=()
depends=('libx11')
makedepends=()
checkdepends=()
optdepends=()
provides=(tftray)
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.$pkgrel.tar.gz)
noextract=()
md5sums=('8fe314cbabdfc82b9311c8cd3c078542')

build() {
  cd "$srcdir"
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}
