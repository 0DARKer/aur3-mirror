# Maintainer: Egor <kontakt.zuf@gmail.com>
# Contributor: Egor <kontakt.zuf@gmail.com>

pkgname=mc-slavz
_pkgname=mc
pkgver=4.7.0pre3
_pkgver=4.7.0-pre3
pkgrel=1
pkgdesc="Fork of Midnight Commander with many patches"
arch=(i686 x86_64)
url="http://www.midnight-commander.org/"
license=('GPL')
depends=(gpm pam e2fsprogs slang)
makedepends=(pkgconfig patch)
conflicts=(mc)
source=(http://www.midnight-commander.org/downloads/14)
md5sums=('8f5f84a2858c8aaecee7a221a9428370')

build() {
  cd ${startdir}/src/$_pkgname-$_pkgver

 ./configure --without-gnome --without-debug --with-included-slang --without-included-gettext \
              --enable-largefile --with-subshell --with-edit --with-vfs --with-samba --with-mmap \
              --without-x --with-gpm-mouse --enable-charset --prefix=/usr


  make || return 1
  make DESTDIR=$startdir/pkg install
}
