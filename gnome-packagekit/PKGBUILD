pkgname=gnome-packagekit
pkgver=2.32.0
pkgrel=3
pkgdesc="Gnome tool for PackageKit, with pacman support"
arch=('i686' 'x86_64')
url="http://packagekit.org/"
license=('GPL')
depends=('packagekit' 'gconf>=2.28.0' 'gnome-icon-theme>=2.28.0'
	 'dbus-glib>=0.82' 'libnotify>=0.4.5' 'libunique>=1.1.2' 'libcanberra>=0.21'
	 'gnome-menus>=2.28.0.1' 'upower' 'polkit-gnome')
optdepends=('pacman-glib')
makedepends=('gtk-doc' 'intltool')
install=${pkgname}.install
source=(http://ftp.acc.umu.se/pub/GNOME/sources/gnome-packagekit/2.32/gnome-packagekit-2.32.0.tar.bz2)
md5sums=(56a8535ca4e10f6bfaf6092de774859e)
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

#  patch -Np1 -i "${srcdir}/arch.patch" || return 1

  ./configure --prefix=/usr \
      --sysconfdir=/etc \
      --disable-gtk-doc \
      --disable-scrollkeeper || return 1

  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1
  
  install -m 755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" "${pkgdir}"/etc/gconf/schemas/*.schemas || return 1
  rm -rf "${pkgdir}/etc"
}
