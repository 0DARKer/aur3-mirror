# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
# Contributor: Brandon Andrews <bsa@bsa.isa-geek.com>
pkgname=pfstools
pkgver=1.8.2
pkgrel=1
pkgdesc="Set of command line programs for reading, writing and manipulating high-dynamic range (HDR) images"
arch=('i686' 'x86_64')
url="http://pfstools.sourceforge.net/"
license=('LGPL2')
depends=()
optdepends=('qt3: QT image viewer' 'freeglut: OpenGL image viewer' 'openexr: OpenEXR support' \
              'imagemagick: ImageMagick support' 'tiff: TIFF support' 'netpbm: PBM support' 'dcraw: RAW support')
makedepends=('qt3' 'openexr' 'imagemagick' 'libtiff' 'freeglut' 'netpbm')
options=(!libtool)
source=(http://downloads.sourceforge.net/pfstools/$pkgname-$pkgver.tar.gz)
md5sums=('8b6e4ec3cc98fe55e676121dba28b41b')

build() {
  cd "$srcdir"/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"/$pkgname-$pkgver
  make DESTDIR="$pkgdir/" install
}

