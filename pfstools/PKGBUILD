# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
# Contributor: Brandon Andrews <bsa@bsa.isa-geek.com>
pkgname=pfstools
pkgver=1.8.5
pkgrel=3
pkgdesc="Set of command line programs for reading, writing and manipulating high-dynamic range (HDR) images"
arch=('i686' 'x86_64')
url="http://pfstools.sourceforge.net/"
license=('LGPL2.1')
depends=('gcc-libs')
optdepends=('freeglut: OpenGL image viewer' 'glu: OpenGL image viewer' \
            'qt4: Qt GUI' 'openexr: OpenEXR support' \
            'imagemagick: ImageMagick support' 'tiff: TIFF support' \
            'netpbm: PBM support' 'dcraw: RAW support')
makedepends=('openexr' 'imagemagick' 'libtiff' 'freeglut' 'glu' 'netpbm' 'qt4')
options=(!libtool)
source=(http://downloads.sourceforge.net/pfstools/$pkgname-$pkgver.tar.gz)
md5sums=('80dac70bfb6359a6749453477e74b112')

build() {
  cd "$srcdir"/$pkgname-$pkgver

  LIBS="-lpthread" ./configure --prefix=/usr \
    --disable-static \
    --with-moc=/usr/bin/moc-qt4
  make
}

package() {
  cd "$srcdir"/$pkgname-$pkgver
  make DESTDIR="$pkgdir/" install
}

