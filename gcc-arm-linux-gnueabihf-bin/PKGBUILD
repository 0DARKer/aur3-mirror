# Maintainer: 謝致邦 <Yeking@Red54.com>

pkgname=gcc-arm-linux-gnueabihf-bin
pkgver=4.7.2
pkgrel=2
pkgdesc="The GNU C compiler for armhf architecture"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/gcc-arm-linux-gnueabihf"
license=('GPL2')
depends=('binutils-arm-linux-gnueabihf-bin' 'cpp-arm-linux-gnueabihf-bin')
provides=('gcc-arm-linux-gnueabihf')
conflicts=('gcc-arm-linux-gnueabihf')
if [ "$CARCH" = "i686" ]; then
	source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-4.7-armhf-cross/gcc-4.7-arm-linux-gnueabihf_4.7.2-21ubuntu3cross1.80_i386.deb")
	md5sums=('c7e53d65edd6dd166dc1ca827757dd3d')
elif [ "$CARCH" = "x86_64" ]; then
	source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-4.7-armhf-cross/gcc-4.7-arm-linux-gnueabihf_4.7.2-21ubuntu3cross1.80_amd64.deb")
	md5sums=('e116fa5c940ebc26c9517270a3da62f4')
fi

package() {
	cd $pkgdir
	tar xf $srcdir/data.tar.gz
	cd usr/bin
	ln -s arm-linux-gnueabihf-gcc-4.7 arm-linux-gnueabihf-gcc
	ln -s arm-linux-gnueabihf-gcov-4.7 arm-linux-gnueabihf-gcov
}
