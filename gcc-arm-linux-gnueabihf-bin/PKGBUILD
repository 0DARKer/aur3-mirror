# Maintainer: 謝致邦 <Yeking@Red54.com>

pkgname=gcc-arm-linux-gnueabihf-bin
pkgver=4.7.3
pkgrel=1
pkgdesc="The GNU C compiler for armhf architecture"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/gcc-arm-linux-gnueabihf"
license=('GPL2')
depends=('binutils-arm-linux-gnueabihf-bin' 'cpp-arm-linux-gnueabihf-bin' 'libgcc-4.7-dev-armhf-cross')
provides=('gcc-arm-linux-gnueabihf')
conflicts=('gcc-arm-linux-gnueabihf')
if [ "$CARCH" = "i686" ]; then
	source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-4.7-armhf-cross/gcc-4.7-arm-linux-gnueabihf_4.7.3-1ubuntu1cross1.81_i386.deb")
	md5sums=('c20cc0d1df79ac65196e1d1a3066d6be')
elif [ "$CARCH" = "x86_64" ]; then
	source=("http://archive.ubuntu.com/ubuntu/pool/universe/g/gcc-4.7-armhf-cross/gcc-4.7-arm-linux-gnueabihf_4.7.3-1ubuntu1cross1.81_amd64.deb")
	md5sums=('b5fc4ddd637b7961f01d0377da502bc8')
fi

package() {
	cd $pkgdir
	tar xf $srcdir/data.tar.gz
	cd usr/bin
	ln -s arm-linux-gnueabihf-gcc-4.7 arm-linux-gnueabihf-gcc
	ln -s arm-linux-gnueabihf-gcov-4.7 arm-linux-gnueabihf-gcov
}
