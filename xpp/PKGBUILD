# Maintainer: Andreas B. Wagner <AndreasBWagner@gmail.com>
# Contributor: Simo Leone <neotuli@gmail.com>
pkgname=xpp
pkgver=1.5
pkgrel=3
pkgdesc="X Printing Panel"
arch=('i686' 'x86_64')
url="http://cups.sourceforge.net/xpp"
license=('GPLv2')
depends=('cups>=1.1.9' 'fltk>=1.0.7')
makedepends=('fltk')
source=("http://kent.dl.sourceforge.net/project/cups/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz" "xpp-1.5.patch")
md5sums=('775fd69c464515da0c3295d04d0c747f'
         '924bf76fb414a328a6e7d64549b26ef0')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch < ../../xpp-1.5.patch
  ./configure --prefix=/usr
  make DESTDIR=$pkgdir/ install || return 1
}
