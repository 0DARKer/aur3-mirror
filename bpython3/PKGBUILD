# Contributor: Igor Yanchenko <yanchenko.igor@gmail.com>

_pkgname=bpython
pkgname=bpython3
pkgver=0.9.7.1
pkgrel=1
pkgdesc="A fancy interface to the Python interpreter"
arch=('any')
url="http://bpython-interpreter.org/"
license=('MIT')
depends=('python' 'pygments3' 'python-distribute')
source=(http://bpython-interpreter.org/releases/$_pkgname-$pkgver.tar.gz)
md5sums=('f32ce6aa8ae6af8d2cf65e13f58859d4')

build() {
  cd "$srcdir"/$_pkgname-$pkgver
  python setup.py install --root="$pkgdir" || return 1
  mv $pkgdir/usr/bin/bpython $pkgdir/usr/bin/bpython3
  mv $pkgdir/usr/bin/bpython-gtk $pkgdir/usr/bin/bpython3-gtk
  mv $pkgdir/usr/share/applications/bpython.desktop $pkgdir/usr/share/applications/bpython3.desktop
  mv $pkgdir/usr/share/man/man1/bpython.1 $pkgdir/usr/share/man/man1/bpython3.1
  mv $pkgdir/usr/share/man/man5/bpython-config.5 $pkgdir/usr/share/man/man5/bpython3-config.5
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
