post_install() {
	[ -x /usr/bin/update-desktop-database ] || return 0
	update-desktop-database -q
	ln -s /usr/bin/mupdf-x11-curl usr/bin/mupdf
}

post_upgrade() {
	post_remove
	post_install
}

post_remove() {
	[ -x /usr/bin/update-desktop-database ] || return 0
	update-desktop-database -q
	rm /usr/bin/mupdf
}

