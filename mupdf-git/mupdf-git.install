post_install() {
	[ -x /usr/bin/update-desktop-database ] || return 0
	update-desktop-database -q
	ln -s /usr/bin/mupdf-x11 usr/bin/mupdf
}

post_upgrade() {
	post_remove
}

pre_remove() {
	rm /usr/bin/mupdf
}

post_remove() {
	[ -x /usr/bin/update-desktop-database ] || return 0
	update-desktop-database -q
}

