# Maintainer: Serge Ziryukin <ftrvxmtrx@gmail.com>

pkgname=musl
pkgver=0.9.2
pkgrel=1
pkgdesc="An implementation of the C/POSIX standard library intended for use on Linux-based systems"
arch=('i686' 'x86_64')
url="http://www.etalabs.net/musl/"
license=('MIT')
makedepends=('make')
source=(http://www.etalabs.net/musl/releases/$pkgname-$pkgver.tar.gz)
md5sums=('f05d0fbcbf82d7857be2f60d65ca2142')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # see http://comments.gmane.org/gmane.linux.lib.musl.general/944
  #CFLAGS="-fno-tree-tail-merge -Wl,--hash-style=sysv" \
  ./configure --prefix=/usr/musl --exec-prefix=/usr && make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
