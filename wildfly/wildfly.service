[Unit]
Description=Wildfly Application Server

[Service]
Type=simple
User=wildfly
PIDFile=/run/wildfly/wildfly.pid
ExecStart=/usr/share/wildfly/bin/systemd-wrapper.sh
ExecReload=/usr/share/wildfly/bin/jboss-cli.sh --connect command=:reload
ExecStop=/usr/share/wildfly/bin/jboss-cli.sh --connect command=:shutdown

[Install]
WantedBy=multi-user.target
