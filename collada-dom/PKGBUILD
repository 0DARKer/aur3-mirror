# Contributer: N30N <archlinux@alunamation.com>

pkgname="collada-dom"
pkgver=2.2
pkgrel=2
pkgdesc="An API that provides a C++ object representation of a COLLADA XML instance document."
url="http://collada-dom.sourceforge.net/"
license=("MIT")
arch=("i686" "x86_64")
depends=("libxml2" "boost" "pcre") #"libminizip"
# makedepends=()
source=("http://downloads.sourceforge.net/${pkgname}/Collada DOM ${pkgver}.zip")
md5sums=("3f7e4fc2372d80d0f8c0732da0e41c1a")

build() {
	cd ${pkgname}/dom
	mv include/1.4/dom/domasset.h include/1.4/dom/domAsset.h
	make
}

package() {
	cd ${pkgname}/dom

	install -d ${pkgdir}/usr/lib ${pkgdir}/usr/include
	make prefix=${pkgdir}/usr install

	install -m755 build/linux-1.4/libminizip.so* ${pkgdir}/usr/lib
	install -D -m644 license.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim: set noet ff=unix:
