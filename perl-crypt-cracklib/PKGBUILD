# CPAN Name  : Crypt-Cracklib
# Contributor: Justin Davis <jrcd83@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 1.10
pkgname='perl-crypt-cracklib'
pkgver='1.7'
pkgrel='1'
pkgdesc="Perl interface to Alec Muffett's Cracklib."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
makedepends=('perl-test-simple>=0.47' 'perl-test-pod-coverage>=1.08'
             'perl-pod-coverage>=0.19')
depends=('perl' 'cracklib>=2.7')
url='http://search.cpan.org/dist/Crypt-Cracklib'
source=('http://search.cpan.org/CPAN/authors/id/D/DA/DANIEL/Crypt-Cracklib-1.7.tar.gz'
	'archdictpath.patch')
md5sums=('8179f32d7470780e001532bcb6cb4080'
         '4395ff0ff0f3b465ac969012f9813372')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Crypt-Cracklib-1.7"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    patch -p1 < "${startdir}/archdictpath.patch" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
