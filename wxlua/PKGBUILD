# Contributor: Eric Forgeot < http://ifiction.free.fr >
pkgname=wxlua
pkgver=2.8.10.0
pkgrel=1
pkgdesc="A set of bindings to the wxWidgets library for the Lua programming language."
arch=(i686 x86_64)
url="http://wxlua.sourceforge.net"
license=('wxWidgets license')
depends=('lua' 'wxgtk')
#makedepends=('')
#provides=()
#conflicts=()
#replaces=()
#backup=()
#groups=()
#options=()
source=(http://downloads.sourceforge.net/${pkgname}/wxLua-${pkgver}-src.tar.gz)
md5sums=('7e0702c1f148a89c2ff6c1eed6a8e2fd')


build() {
  cd $srcdir/wxLua
    ./configure --prefix=/usr --with-lua-prefix=/usr/lib/lua/5.1/ 
	make || return 1
	make DESTDIR=$pkgdir install || return 1
	#can't make it find lua, so we remove those files which are in conflict.
	rm $pkgdir/usr/bin/lua
	rm $pkgdir/usr/include/lauxlib.h
	rm $pkgdir/usr/include/lua.h 
	rm $pkgdir/usr/include/luaconf.h 
	rm $pkgdir/usr/include/lualib.h 
}
