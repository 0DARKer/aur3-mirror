# Maintainer: Alexander Kratzsch <alexander-kratzsch at web dot de>
# Contributor: Lucas De Marchi <lucas.de.marchi at gmail dot com>

pkgname=connman-git
pkgver=20111204
pkgrel=1
pkgdesc="Wireless LAN network manager"
url="http://connman.net/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('dbus-core' 'iptables' 'glib2')
conflicts=('openresolv')
makedepends=('bluez' 'wpa_supplicant' 'openconnect' 'openvpn' 'libcap-ng')
optdepends=('bluez: bluetooth support'
	    'wpa_supplicant: wifi support'
            'openvpn: openvpn support'
	    'openconnect: Cisco AnyConnect VPN support')
options=('!libtool')

_gitroot="https://git.kernel.org/pub/scm/network/connman/connman.git"
_gitname="connman"

source=("connmand-daemon"
	"allow_group_network.diff")
md5sums=('88ece7cbf1d0d289545ce4f8553fdab8'
         'a8d22ee089fb0ed725130d16ad393047')

build() {
  cd ${srcdir}

  if [ -d $_gitname ]; then
    cd $_gitname && git pull origin || return 1
  else
    git clone $_gitroot || return 1
  fi
  
  cd $srcdir/$_gitname

  patch -Np1 -i $srcdir/allow_group_network.diff || return 1

  ./bootstrap-configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var #\
#	--enable-ethernet \
#	--enable-wifi \
#	--enable-bluetooth \
#	--enable-openvpn \
#	--enable-loopback \
#	--enable-pacrunner \
#	--enable-ntpd \
#	--enable-polkit

  make || return 1
}

package() {
  cd "$srcdir/$_gitname"

  make DESTDIR="$pkgdir/" install
  install -Dm755 $srcdir/connmand-daemon $pkgdir/etc/rc.d/connmand
}


