# Contributor: Alexander Rødseth <rodseth@gmail.com>
pkgname=ski
pkgver=6.5
pkgrel=1
pkgdesc="Ski game for the console"
arch=('i686' 'x86_64')
depends=('python')
url="http://www.catb.org/esr/ski/"
license=('GPL')
md5sums=('f9cc93f7a0223f65b011b4c873ba50df')
source=('http://www.catb.org/esr/ski/ski-6.5.tar.gz')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  gzip ski.6
  install -Dm644 ski.6.gz "$pkgdir/usr/share/man/ski.6"
  install -Dm755 ski "$pkgdir/usr/bin/ski"
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 et:
