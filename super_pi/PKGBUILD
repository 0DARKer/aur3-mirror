# Maintainer: modywzm <modywzm at gmail dot com>
pkgname=super_pi
pkgver=1.5
pkgrel=1
pkgdesc="SuperPI is a quick reference benchmark test often used when overclocking or comparing different hardware configurations."
url="http://superpi.ilbello.com/"
arch=('i686')
license=('GPL')
source=("http://superpi.ilbello.com/pi/$pkgname.tar.bz2" "super_pi")
md5sums=('73bb36f76f2b8d0721d1187881684d4c' '0eda097e8c5da98f2aaae12f552d476f')

build() {
  cd $srcdir
  install -Dm755 pi $pkgdir/opt/super_pi/bin/pi
  install -Dm755 super_pi $pkgdir/usr/bin/super_pi
  install -Dm644 Readme.txt $pkgdir/opt/super_pi/Readme.txt
}
