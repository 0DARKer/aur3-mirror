pkgname=carl9170-fw
pkgver=1.9.2
pkgrel=2
pkgdesc="Firmware for the carl9170 WiFi driver"
arch=('i686' 'x86_64')
url="http://wireless.kernel.org/en/users/Drivers/carl9170"
license=('GPL2')
depends=()
makedepends=()
options=()
install=
source=('carl9170-1.fw::http://linuxwireless.org/en/users/Drivers/carl9170/fw1.9.2?action=AttachFile&do=get&target=carl9170-1.fw')
md5sums=('9e33ac39dcd610aa1ad80bbf4f1abccf')

build() {
  mkdir -p $pkgdir/lib/firmware
  cp $srcdir/* $pkgdir/lib/firmware  
}

