pkgname=carl9170-fw
pkgver=1.9.5
pkgrel=1
pkgdesc="Firmware for the carl9170 WiFi driver"
arch=('i686' 'x86_64')
url="http://wireless.kernel.org/en/users/Drivers/carl9170"
license=('GPL2')
depends=()
makedepends=()
options=()
install=
source=('carl9170-1.fw::http://linuxwireless.org/en/users/Drivers/carl9170/fw1.9.5?action=AttachFile&do=get&target=carl9170-1.fw')
md5sums=('a7775683a0839c679a7e47622b1caad9')

build() {
  mkdir -p $pkgdir/lib/firmware
  cp $srcdir/* $pkgdir/lib/firmware  
}
