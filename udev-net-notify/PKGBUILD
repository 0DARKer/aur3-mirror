# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=udev-net-notify
pkgver=0.0.11
pkgrel=1
pkgdesc="Notify about udev net events"
arch=('i686' 'x86_64')
url="http://www.eworm.de/"
depends=('libnotify' 'udev')
license=('GPL')
source=("${pkgname}.c" "${pkgname}.desktop")
    
build() {
  cd ${srcdir}/
  gcc `pkg-config --cflags --libs libnotify` `pkg-config --cflags --libs libudev` ${pkgname}.c -o ${pkgname}
  install -D -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
  install -D -m644 ${pkgname}.desktop ${pkgdir}/etc/xdg/autostart/${pkgname}.desktop
}

# vim:set ts=2 sw=2 et:
md5sums=('0806f577d89a94a5b4d12e26228ea2ad'
         '704ba1a6b7d9c96127eb131bff4799e0')
