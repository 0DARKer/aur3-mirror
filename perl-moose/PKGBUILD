pkgdesc="A postmodern object system for Perl 5"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-data-optlist>=0.107' 'perl-devel-globaldestruction' 'perl-eval-closure>=0.04' 'perl-list-moreutils>=0.12' 'perl-mro-compat>=0.05' 'perl-package-deprecationmanager>=0.10' 'perl-package-stash>=0.21' 'perl-package-stash-xs>=0.18' 'perl-params-util>=1.00' 'perl-sub-exporter>=0.980' 'perl-sub-name>=0.05' 'perl-task-weaken' 'perl-try-tiny>=0.02')
makedepends=('perl-dist-checkconflicts>=0.02' 'perl-test-fatal>=0.001' 'perl-test-requires>=0.05')
