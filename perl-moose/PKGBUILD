pkgname='perl-moose'
pkgver='1.23'
pkgrel='1'
pkgdesc="A postmodern object system for Perl 5"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-class-mop>=1.11' 'perl-data-optlist' 'perl-list-moreutils>=0.12' 'perl-package-deprecationmanager>=0.10' 'perl-params-util>=1.00' 'perl-sub-exporter>=0.980' 'perl-sub-name' 'perl-task-weaken' 'perl-try-tiny>=0.02')
makedepends=('perl-test-fatal>=0.001' 'perl-test-requires>=0.05')
url='http://search.cpan.org/dist/Moose'
source=('http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Moose-1.23.tar.gz')
md5sums=('3851a5a6a6bb7e8230b1371c8f2c7999')

build() {
  local PERL=/usr/bin/perl DIST_DIR="${srcdir}/Moose-1.23"

  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$DIST_DIR"
    $PERL Makefile.PL
    make
    make test
    make install
  )

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

