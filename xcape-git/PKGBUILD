# Maintainer: Greg Fitzgerald <greg@gregf.org>

pkgname=xcape-git
pkgver=20120401
pkgrel=1
pkgdesc="Linux utility to make control key send escape key events when pressed on its own"
url=("https://github.com/alols/xcape")
arch=('i686' 'x86_64')
license=('GPL3')
depends=(gcc libxtst libx11)
makedepends=('git')
_gitroot="https://github.com/alols/xcape.git"
_gitname="xcape"

build()
{
    cd ${srcdir}

    msg "Connecting to github.com GIT server...."
    if [[ -d ${srcdir}/${_gitname} ]] ; then
        cd ${_gitname}
        git pull origin master
	      msg "Updating existing repo..."
    else
        git clone ${_gitroot}
    fi

    msg "GIT checkout done or server timeout"
    cd ${srcdir}/${_gitname}

    make || return 1
    install -Dm755 "${_gitname}" "${pkgdir}"/usr/bin/"${_gitname}"
}
