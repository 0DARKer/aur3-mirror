# Contributor: derrida <deleuzians@gmail.com>
pkgname=lush2
pkgver=2.0beta2
pkgrel=1
pkgdesc="Lush is an object-oriented programming language designed for researchers, experimenters, and engineers interested in large-scale numerical and graphic applications."
url="http://lush.sourceforge.net"
license=('GPL')
depends=('gcc-libs' 'libsm' 'libxft')
arch=('x86_64')
options=('!libtool')
source=(http://downloads.sourceforge.net/lush/lush-2.0-beta2.tar.gz)
md5sums=('bd3150991ce54800c27b97f6efd5086a')
build() {
  cd $startdir/src/lush-2.0-beta2
  ./configure --prefix=/usr --with-x
  make prefix=/usr || return 1
  sudo make install
}
