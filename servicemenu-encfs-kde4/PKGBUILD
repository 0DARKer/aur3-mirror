# Contributor: damian01w <damian01w@gmail.com>
pkgname=servicemenu-encfs-kde4
pkgver=0.1.1
pkgrel=1
pkgdesc="A new little servicemenu for KDE4 for mount/umount encfs encrypted directories."
arch=('i686' 'x86_64')
url="http://www.egregorion.net/2009/05/12/servicemenu-encfs-01-for-kde/"
license=('GPL')
depends=('kdebase>=4.1.0' 'encfs')
md5sums="3aa3aca459fb38ce03a43214334eb7c4"
source="http://www.egregorion.net/works/servicemenus/servicemenu-encfs_0.1.1-kde4.tar.gz"

build() {
  tar -xvf ${srcdir}/servicemenu-encfs_$pkgver-kde4.tar.gz
  mkdir -p ${pkgdir}/usr/share/kde4/services/ServiceMenus/
  mkdir -p ${pkgdir}/usr/bin/
  install -m 644 ${srcdir}/servicemenu-encfs_$pkgver-kde4/desktop/*.desktop ${pkgdir}/usr/share/kde4/services/ServiceMenus/
  install -m 755 ${srcdir}/servicemenu-encfs_$pkgver-kde4/bin/*.sh ${pkgdir}/usr/bin/
}

