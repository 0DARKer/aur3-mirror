pkgname=freediameter-hg
pkgver=745
pkgrel=1
pkgdesc="An open source implementation of the diameter protocol"
arch=('i686' 'x86_64')
url="http://www.freediameter.net/"
license=('BSD')
depends=('glib2' 'gnutls' 'lksctp-tools' 'libidn')
makedepends=('cmake' 'mercurial' 'bison' 'flex')
install=freediameter.install
source=(freediameter)
md5sums=('9f98b5926802b7e8aa946f5c863d947a')

_hgroot="http://www.freediameter.net"
_hgrepo="hg/freeDiameter"

build() {
	cd $srcdir
	
	cp -a ${srcdir}/${_hgrepo} ${srcdir}/freediameter-build || return 1
	cd ${srcdir}/freediameter-build
	
	cmake -DCMAKE_INSTALL_PREFIX:STRING=/usr -DDEFAULT_CONF_PATH:STRING=/etc/freeDiameter .
	make || return 1
	make DESTDIR=$pkgdir install || return 1
	
	install -D -m 0644 $srcdir/freediameter-build/doc/freediameter.conf.sample $pkgdir/etc/freeDiameter/freeDiameter.conf || return 1
	rm -f $srcdir/freediameter-build/doc/freediameter.conf.sample
	for f in $srcdir/freediameter-build/doc/*.conf.sample; do
		install -D -m 0644 $f $pkgdir/etc/freeDiameter/`basename $f | sed 's/.conf.sample$/.conf/'` || return 1
	done
	install -D -m 0755 $srcdir/freediameter $pkgdir/etc/rc.d/freediameter || return 1
	#rm -rf ${srcdir}/freediameter-build
}



