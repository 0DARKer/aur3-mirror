# Maintainer: Robert Knauer <robert@privatdemail.net>

pkgname=freediameter-hg
pkgver=784
pkgrel=1
pkgdesc="An open source implementation of the diameter protocol (development version)"
arch=('i686' 'x86_64')
url="http://www.freediameter.net/"
license=('BSD')
depends=('glib2' 'gnutls' 'lksctp-tools' 'libidn')
makedepends=('cmake' 'mercurial' 'bison' 'flex')
install=freediameter.install
source=(freediameter)
md5sums=('9f98b5926802b7e8aa946f5c863d947a')
provides=('freediameter')
conflicts=('freediameter')

_hgroot="http://www.freediameter.net"
_hgrepo="hg/freeDiameter"

build() {
	cd $srcdir/${_hgrepo}
	rm -rf build
        mkdir build || return 1
        cd build
	cmake -DCMAKE_INSTALL_PREFIX:STRING=/usr -DDEFAULT_CONF_PATH:STRING=/etc/freeDiameter ../ || return 1
	make || return 1
	make DESTDIR=$pkgdir install || return 1
	
	install -D -m 0644 $srcdir/${_hgrepo}/doc/freediameter.conf.sample $pkgdir/etc/freeDiameter/freeDiameter.conf.sample || return 1
	rm -f $srcdir/${_hgrepo}/doc/freediameter.conf.sample || return 1
	for f in $srcdir/${_hgrepo}/doc/*.conf.sample; do
		install -D -m 0644 $f $pkgdir/etc/freeDiameter/ || return 1
	done
	install -D -m 0755 $srcdir/freediameter $pkgdir/etc/rc.d/freediameter || return 1
}
