pkgname=python-aplpy
pkgver=0.9.5
pkgrel=1
pkgdesc="An astronomical plotting library in python"
arch=('any')
url="http://aplpy.sourceforge.net/"
license=("GPL3")
depends=('python2' 'python-matplotlib>=0.99' 'python-numpy>=1.3' 'python-pyfits>=2.1' 'python-pywcs' 'python-montage' 'python-pyregion')
source=("http://downloads.sourceforge.net/project/aplpy/APLpy/APLpy-$pkgver/APLpy-$pkgver.tar.gz")
md5sums=('241951320d7ddcb7efff141f836ee061')

build() {
  cd $srcdir/APLpy-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1
}
