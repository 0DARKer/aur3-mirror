pkgname=python-aplpy
pkgver=0.9.6
pkgrel=2
pkgdesc="An astronomical plotting library in python"
arch=('any')
url="http://aplpy.sourceforge.net/"
license=("GPL3")
depends=('python2' 'python-matplotlib>=0.99' 'python2-numpy>=1.3' 'python-pyfits>=2.1' 'python-pywcs' 'python-montage' 'python-pyregion')
source=("https://github.com/downloads/aplpy/aplpy/APLpy-$pkgver.tar.gz")
md5sums=('bfd8e61ea1139dcc3d8bdf94eee03df3')

build() {
  cd $srcdir/APLpy-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1
}
