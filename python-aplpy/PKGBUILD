# Contributor: Médéric Boquien <mboquien@free.fr>

pkgname=python-aplpy
pkgver=0.9.10
pkgrel=1
pkgdesc="An astronomical plotting library in python"
arch=('any')
url="http://aplpy.sourceforge.net/"
license=("MIT")
depends=('python' 'python-matplotlib>=1.0.0' 'python-numpy>=1.4' 'python-pyregion' 'python-imaging' 'python-astropy' 'python-pyavm')
source=("https://pypi.python.org/packages/source/A/APLpy/APLpy-$pkgver.tar.gz")
md5sums=('049317adf7a08ede6e7e0d5c7e18d722')

build() {
  cd ${srcdir}/APLpy-${pkgver}
  python setup.py build
}


package() {
  cd ${srcdir}/APLpy-${pkgver}

  install  -Dm644 LICENSE.rst ${pkgdir}/usr/share/licences/${pkgname}/LICENSE.rst
  python setup.py install --root=${pkgdir}/ --optimize=1
}
