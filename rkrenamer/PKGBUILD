#Maintainer Kočmaroš Karolj <karlosmunjos at gmail dot com>

pkgname=rkrenamer
pkgver=0.3.0
pkgrel=1
pkgdesc="Application for renaming large number of files"
arch=('i686' 'x86_64')
url="http://www.raskovsoft.com/rkrenamer"
license=('LGPL')
install=${pkgname}.install
depends=('qt4>=4.8.4')

source=('http://master.dl.sourceforge.net/project/rkrenamer/Source/${pkgver}/rkrenamer.zip')
	
sha256sums=('20c78fe5278a878593c09f29f641b9299ee94caae0673b2438a01e4f71edf3ef')
build()
{
    cd $srcdir/trunk
    qmake-qt4 || return 1
    make || return 1    
}
	    
package() 
{    
    cd $srcdir/trunk
    make INSTALL_ROOT="${pkgdir}" install
}
