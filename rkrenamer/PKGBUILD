pkgname=rkrenamer
pkgver=0.1.0
pkgrel=1
pkgdesc="Application for renaming large number of files"
arch=('i686' 'x86_64')
url="http://www.raskovsoft.com/rkrenamer"
license=('LGPL')
install=${pkgname}.install
depends=('qt4>=4.8.4')
source=('http://master.dl.sourceforge.net/project/rkrenamer/Source/${pkgver}/rkrenamer.zip'
	'rkrenamer.desktop'
	'RK.png')
sha256sums=('0b22a2e488d7c9f90e49163638c0db7e9449970614a16a763a251a62f25ad870'
	    '06ccc4f56d0aa1b92ed9703e37325c2d7e70fbdecf81180fa52e3d2aa4157f7f'
	    '19c2a12d0a34b6860fa8826d341d28808fbc6b3c77ef6563e947ae2ceb1c4bfa')
build()
{
    cd $srcdir/trunk
    qmake-qt4 || return 1
    make || return 1    
}
	    
package() 
{    
cd $srcdir/trunk
    install -Dm755 rkrenamer "$pkgdir/usr/bin/rkrenamer"
    install -Dm644 $startdir/RK.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
    install -Dm644 $startdir/rkrenamer.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"       
}
