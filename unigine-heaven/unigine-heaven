#!/bin/bash

echo "fullscreen? Please enter 1 or 0. (1 = yes, 0 = no)"
read full
echo "video width? e.g. 1024"
read width 
echo "video height? e.g. 768"
read height

export LD_LIBRARY_PATH=/opt/unigine-heaven/bin:$LD_LIBRARY_PATH
/opt/unigine-heaven/bin/Heaven_x86	-video_app opengl \
					-sound_app openal \
					-system_script heaven/unigine.cpp \
					-engine_config ../data/heaven_2.0.cfg \
					-data_path ../ \
					-extern_define RELEASE \
					-video_fullscreen $full \
					-video_mode -1 \
					-video_width $width \
					-video_height $height