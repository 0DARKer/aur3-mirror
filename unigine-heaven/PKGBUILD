# Contributor: yannsen yannsn@gmail.com
pkgname=unigine-heaven
_pkgname=Unigine_Heaven
pkgver=2.5
pkgrel=1
pkgdesc="Unigine Benchmark"
arch=('i686' 'x86_64')
url="http://www.unigine.com"
license=('unknown')
[ "$CARCH" = "i686" ] && depends=(openal libgl gcc-libs libxrandr \
libxinerama libxinerama gcc-libs libxrandr bash)
[ "$CARCH" = "x86_64" ] && depends=(openal libgl gcc-libs \
lib32-libxrandr lib32-libxinerama libxinerama lib32-gcc-libs libxrandr bash)
source=(ftp://46.163.74.34/$_pkgname-$pkgver.run unigine-heaven)
options=(!strip)
md5sums=('7a601ece38c092fcbe285dd89ad7bad0'
         '80ede30ca0609c376cc47e398e77c629')
package() {
  sh $_pkgname-$pkgver.run
  install -m755 -d $pkgdir/opt/$pkgname 
  cp -R $srcdir/$_pkgname-$pkgver/bin/ $pkgdir/opt/$pkgname/
  cp -R $srcdir/$_pkgname-$pkgver/data/ $pkgdir/opt/$pkgname/
  install -d $pkgdir/usr/bin/
  install unigine-heaven -m755 $pkgdir/usr/bin/unigine-heaven
    if [ "$CARCH" = "x86_64" ]; then
  sed -i s#Heaven_x86#Heaven_x64#g $pkgdir/usr/bin/unigine-heaven || return 1
    fi
}

# vim:set ts=2 sw=2 et: