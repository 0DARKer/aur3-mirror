pkgname=postgresql-jdbc
pkgver=9.0_801
pkgrel=1
pkgdesc="The official JDBC driver for PostgreSQL. This package contains JDBC3 and JDBC4 drivers."
arch=('i686' 'x86_64')
url="http://jdbc.postgresql.org/"
license="BSD"
depends=('java-runtime')
conflicts=('postgresql-jdbc3')
source=(http://jdbc.postgresql.org/download/postgresql-${pkgver//_/-}.jdbc3.jar \
	http://jdbc.postgresql.org/download/postgresql-${pkgver//_/-}.jdbc4.jar \
	setClasspath.sh)
noextract=('*.jar')

package() {
	mkdir -p $pkgdir/usr/share/java/$pkgname

	cp $srcdir/* $pkgdir/usr/share/java/$pkgname
	for i in ${pkgdir}/usr/share/java/${pkgname}/*.jar; do
		_filename=${i##*\/}; _version=${pkgver//_/-}
		ln -s ${_filename} ${pkgdir}/usr/share/java/${pkgname}/${_filename/${_version}./} || return 1
	done
}

md5sums=('9eaf3ea9f5b975195db127dc24fca9a0'
         '6e26be40fb8daa96e9327020e035a621'
         'a026b9cf81f600d6be0b77ad675f87d9')
sha256sums=('2a7ca8fea3f8befb445323cd0c3bba269b9e3937dda152469af2360a7d7aa428'
            '269faefab785ba5480b66b67b94a5189209e5cb86fb6def3e0a2155332ed6f3a'
            '0aad1b3ab01964fb3964d24ce22996de86b8a6f63e210bb97da2655af6d9b94b')
