pkgname=gnome-shell-extension-weather-git
pkgver=20110528
pkgrel=1
epoch=
pkgdesc="A GNOME Shell extension for displaying weather notifications"
arch=('any')
url="https://github.com/simon04/gnome-shell-extension-weather"
license=('GPL')
groups=()
depends=('gnome-shell')
makedepends=('git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=()

_gitroot="https://github.com/simon04/gnome-shell-extension-weather"
_gitname="gnome-shell-extension-weather"
_woeid=""
build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Enter WOEID (http://developer.yahoo.com/geo/geoplanet/guide/concepts.html)"
  msg "or just press enter and change it later in /usr/share/gnome-shell/extensions/weather@venemo.net/extension.js"
  read -p "Your choice: " _woeid
  msg "------"
  msg "$_woeid"
  msg "------"
  if [ "$_woeid" != '' ]; then
    sed -i "s/AUXX0010/$_woeid/g" "$srcdir/$_gitname/weather@venemo.net/extension.js"
  fi
}

package() {
  mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/weather@venemo.net"
  cd "$srcdir/$_gitname/weather@venemo.net"
  cp stylesheet.css extension.js metadata.json "$pkgdir/usr/share/gnome-shell/extensions/weather@venemo.net"
} 
