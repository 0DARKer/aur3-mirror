# Contributor: Kevin Edmonds <edmondskevin@hotmail.com>
pkgname=libnetfilter_log
pkgver=0.0.13
pkgrel=1
pkgdesc="userspace library providing interface to packets that have been logged by the kernel packet filter"
depends=(libnfnetlink)
url="http://www.tw.netfilter.org/projects/libnetfilter_log/index.html"
source=(http://www.tw.netfilter.org/projects/$pkgname/files/$pkgname-$pkgver.tar.bz2)
md5sums=('168e4f46f6ad5549ddbaddf675e54552')
license="GPL"

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
  find $startdir/pkg -name '*.la' -exec rm {} \;
}
