pkgname=difmplay
pkgver=20101122
pkgrel=1
pkgdesc="Script to ease playing music from di.fm and sky.fm internet radio"
arch=('any')
license=('public domain')
url="http://tukaani.org/difmplay/"
depends=('bash' 'mplayer' 'dialog' 'util-linux-ng')
source=('http://tukaani.org/difmplay/difmplay')
md5sums=('41ca9281fb4018994ee40e66b79db3eb')
build() {
  cd $srcdir
  mkdir -p $pkgdir/usr/bin
  install -m755 $srcdir/difmplay $pkgdir/usr/bin/ || return 1
  }
