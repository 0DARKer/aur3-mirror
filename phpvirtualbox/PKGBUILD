pkgname=phpvirtualbox
pkgver=4.2
pkgrel=1
pkgdesc="PHP/AJAX web interface for VirtualBox"
arch=(any)
url="http://code.google.com/p/phpvirtualbox/"
license=('GPL')
depends=(php)
backup=('srv/http/phpvirtualbox/.htaccess'
	'srv/http/phpvirtualbox/config.php')
source=(http://phpvirtualbox.googlecode.com/files/phpvirtualbox-${pkgver/./-}.zip)
md5sums=('cf2ed030cc1e0a7d1effb591b14f100b')

build() {
  cd $srcdir
  install -d -m0755 $pkgdir/srv/http
  cp -a phpvirtualbox-${pkgver/./-} $pkgdir/srv/http/phpvirtualbox
  echo "deny from all" >> $pkgdir/srv/http/phpvirtualbox/.htaccess
}
