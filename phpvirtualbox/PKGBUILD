pkgname=phpvirtualbox
pkgver=4.0_3
pkgrel=1
pkgdesc="PHP/AJAX web interface for VirtualBox"
arch=(any)
url="http://code.google.com/p/phpvirtualbox/"
license=('GPL')
depends=(php)
backup=('srv/http/phpvirtualbox/.htaccess')
options=(force)
source=(http://phpvirtualbox.googlecode.com/files/phpvirtualbox-${pkgver/_/-}.zip)
md5sums=('53851e95cae902e4a3c84449c8a0bd91')

build() {
  cd $srcdir
  install -d -m0755 $pkgdir/srv/http
  cp -a phpvirtualbox-${pkgver/_/-} $pkgdir/srv/http/phpvirtualbox
  echo "deny from all" >> $pkgdir/srv/http/phpvirtualbox/.htaccess
}
