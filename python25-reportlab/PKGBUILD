# Maintainer: Tocer Deng <tocer.deng@gmail.com>

pkgname=python25-reportlab
pkgver=2.3
_origver=2_3
pkgrel=2
pkgdesc="reportlab compiled with python25"
arch=('i686' 'x86_64')
depends=('python25' 'freetype2')
license=('CUSTOM')
source=(http://www.reportlab.org/ftp/ReportLab_${_origver}.tar.gz)
url="http://www.reportlab.org/rl_toolkit.html"
md5sums=('057b846bd3b7b2c3498bf14f6a523632')

build() {
    cd $startdir/src/ReportLab_${_origver}
    python2.5 setup.py install --prefix=/usr --root=$pkgdir
    install -D -m644 LICENSE.txt $startdir/pkg/usr/share/licenses/$pkgname/license.txt
}

