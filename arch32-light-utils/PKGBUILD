pkgname='arch32-light-utils'
pkgver=2010.12.12.2
pkgrel=1
pkgdesc="Utility scripts for the arch32-light package."
arch=('any')
depends=('arch32-light')
optdepends=('powerpill: for powerpill32' 'bauerbill: for bauerbill32')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('8782b7fc859908dc7eb8230b8af9d6d6')

build()
{
  cd ${srcdir}/${pkgname}
	install -Dm755 powerpill32            "${pkgdir}/usr/bin/powerpill32"
	install -Dm755 bauerbill32            "${pkgdir}/usr/bin/bauerbill32"
}

