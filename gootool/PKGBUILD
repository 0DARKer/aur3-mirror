pkgname=gootool
pkgver=1.0.1.366
pkgrel=3
pkgdesc="World of Goo hacking utility (worldofgoo)"
arch=(any)
url="http://goofans.com/download/utility/$pkgname"
license=('custom')
source=(http://goofans.com/download/145/280/$pkgname-$pkgver-linux.tar.bz2)
depends=('java-runtime')
optdepends=("worldofgoo: if you don't already have the game")
md5sums=('dc1a0ee7f6caea4263be926982ba87b9')

build() {
	cd $pkgname-$pkgver
	mkdir -p $pkgdir/usr
	cp -r * $pkgdir/usr
}
