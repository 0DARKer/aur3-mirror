# Maintainer: Jonathan Lestrelin <zanko@daemontux.org>

pkgname=grilo
pkgver=0.1.16
pkgrel=2
pkgdesc="Grilo is a framework focused on making media discovery and browsing easy for application developers."
arch=('i686' 'x86_64')
url="http://www.clutter-project.org"
license=('LGPL')
depends=('gconf' 'libsoup' 'gtk2')
source=("http://ftp.gnome.org/pub/GNOME/sources/$pkgname/0.1/$pkgname-$pkgver.tar.bz2")
sha256sums=('690dabd2bf0fb5f1f11ec9c69005c7c7b1b7c1585dc9ab7b93d3ee3aab284c74')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
