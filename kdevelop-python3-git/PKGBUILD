# Contributor: Sven Brauch <svenbrauch@gmail.com>

pkgname=kdevelop-python3-git
pkgver=20140327
pkgrel=1
pkgdesc="Python language plugin for KDevelop - Git build, Python 3 version"
arch=('i686' 'x86_64')
url="http://www.kdevelop.org/"
license=('GPL')
groups=('kde' 'kdevelop-plugins')
depends=('kdevplatform-git' 'python=3.4.0')
optdepends=('kdevelop-git')
makedepends=('cmake' 'automoc4' 'git' 'python=3.4.0')
provides=('kdevelop-python')
conflicts=('kdevelop-python')

_gitroot="git://anongit.kde.org/kdev-python"
_gitname="python"

pkgver() {
    date +%Y%m%d
}

build() {
    cd "$srcdir"
    git clone --branch python3 --depth 1 "$_gitroot" "$_gitname"

    mkdir -p "$srcdir/build"
    cd "$srcdir/build"
    
    cmake ../$_gitname \
        -DCMAKE_BUILD_TYPE=RelWithDebInfo \
        -DCMAKE_INSTALL_PREFIX=/usr

    make -j 3
}

package() {
    cd "$srcdir/build"

    make DESTDIR="$pkgdir" install
}
