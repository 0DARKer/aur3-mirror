# Maintainer: Benjamin Bukowski <benjamin.bukowski@gmail.com>

pkgname=tsmuxer-ng
pkgver=2.4.0
pkgrel=1
pkgdesc='Transport Stream muxer. New Generation (3D capable)'
arch=('i686' 'x86_64')
url="http://forum.doom9.org/showthread.php?t=168539&"
license=('custom')
provides=('tsmuxer' 'tsmuxer-gui')
conflicts=('tsmuxer' 'tsmuxer-gui')
depends=('bash')
[ "$CARCH" == "i686" ] && depends+=('gcc-libs' 'freetype2' 'qt4')
[ "$CARCH" == "x86_64" ] && depends+=('lib32-gcc-libs' 'lib32-freetype2' 'lib32-qt4')
source=("tsmuxer-${pkgver}.tar.gz::https://docs.google.com/uc?authuser=0&id=0B0VmPcEZTp8NcTk1NzNrQUVIY2s&export=download")
md5sums=('b858ced49cafb54addaebca9c64c8eca')
options=('!strip')

package() {
  cd "${srcdir}"
  install -Dm755 tsMuxeR "${pkgdir}/usr/bin/tsMuxeR"
  install -Dm755 tsMuxerGUI "${pkgdir}/usr/bin/tsMuxerGUI"
}
