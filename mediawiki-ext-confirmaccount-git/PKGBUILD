# Maintainer: Felix E. xelif@icqmail.com
pkgname=mediawiki-ext-confirmaccount-git
pkgver=r1479.0dedbb8
pkgrel=1
pkgdesc="Extension ConfirmAccount for MediaWiki for controlled account registration."
install=confirmaccount.install
source=("git+https://gerrit.wikimedia.org/r/p/mediawiki/extensions/ConfirmAccount.git")
md5sums=('SKIP')
arch=('any')
url="http://www.mediawiki.org/wiki/Extension:ConfirmAccount"
license=('GPL')
depends=('mediawiki')
makedepends=('git')
conflicts=('confirmaccount-mediawiki-ext')

# Variable storing the mediawiki extension name.
_extname="ConfirmAccount"

pkgver() {
  cd $_extname
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  _extdir="$pkgdir/usr/share/webapps/mediawiki/extensions"
  mkdir -p "$_extdir"
  rsync -a $_extname "$_extdir/" --exclude .git
}