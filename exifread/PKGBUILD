pkgname=exifread
_pkgname=ExifRead
pkgver=1.4.1
pkgrel=2
pkgdesc="Python library to extract EXIF data from tiff and jpeg files"
arch=('any')
url="https://pypi.python.org/pypi/ExifRead/"
license=('BSD')
depends=('python2')
provides=('exifread=1.4.1')
source=(https://pypi.python.org/packages/source/E/$_pkgname/$_pkgname-$pkgver.tar.gz)
sha512sums=('b5e761c89f4de83f29509aad64e1e9fcd4295d0087ba43afa5923cd3e7fcf5b4d9c7ea0580bc64e4fef15efd75d94c15c6253a06f869e2482db2c46de89b8b5d')


package() {
	cd "$srcdir/$_pkgname-$pkgver"
  python2 setup.py install --root=$pkgdir
}

