#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pbget
pkgver=2012.02.21.15429
pkgrel=1
pkgdesc='A tool for retrieving ABS and AUR PKGBUILDs and local source files.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pbget"
depends=(wget)
optdepends=('bash-xyne-common_functions: to check for upgradable packages' 'rsync:  abs support,')
source=(http://xyne.archlinux.ca/projects/pbget/archives/pbget-2012.02.21.15429.tar.xz)
sha512sums=(b7e0ad06277204ab92fd37e5156e5af505dd0a6f9b9cc5acc88e7187c15d8d43f8122f0cbfcb7b20de83a29e5fc6a8853788e1865dba147cebca6c7cc0e96cbb)
md5sums=(aae8092b967eb92b2a7f0362959c2db3)

build () 
{ 
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname";
  install -D -m644 "$srcdir/$pkgname-$pkgver/man/$pkgname.1.gz" "$pkgdir/usr/share/man/man1/$pkgname.1.gz"
}


