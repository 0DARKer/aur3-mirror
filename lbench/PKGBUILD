# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=lbench  
pkgver=1.7
pkgrel=1
pkgdesc="Simple Linux multithread benchmarking tool"
url="http://kornelix.squarespace.com/lbench/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('cfbf0edb0fd1bbac552ccddf02585eda')
build() {
  cd $srcdir/$pkgname-$pkgver
  install -d $pkgdir/usr/share/applications
  export PREFIX=/usr
  sed -i 's+xdg-deskto+#xdg-deskto+' Makefile
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop $pkgdir/usr/share/applications/$pkgname.desktop 
  make DESTDIR=$pkgdir PREFIX=/usr install
  rm $pkgdir/usr/share/applications/kornelix-$pkgname.desktop
  rm $pkgdir/usr/share/doc/$pkgname/$pkgname.man
}
