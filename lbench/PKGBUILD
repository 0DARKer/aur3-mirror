# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=lbench  
pkgver=1.6
pkgrel=3
pkgdesc="Simple Linux multithread benchmarking tool"
url="http://kornelix.squarespace.com/lbench/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('653e7091b43db60f2036dd62f7bae46e')
build() {
  cd $srcdir/$pkgname-$pkgver
  make CFLAGS+="-c $(pkg-config --cflags gtk+-2.0)" PREFIX=/usr \
    LFLAGS+="`pkg-config --libs gtk+-2.0 gthread-2.0`" 
  sed -i 's/# //' data/desktop
}

package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 data/desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop 
  make DESTDIR=$pkgdir PREFIX=/usr install
  rm $pkgdir/usr/share/applications/kornelix-$pkgname.desktop
}
