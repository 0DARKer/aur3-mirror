_pkgsourcename=openssl-compatibility
pkgname=lib32-$_pkgsourcename
pkgver=1.0.0
pkgrel=1
pkgdesc="libssl and libcrypto 1.0.0 libs (32 Bit)"
url="https://www.openssl.org"
license=('GPL')
arch=(x86_64)
depends=()
source=(http://arm.konnichi.com/core/os/i686/openssl-$pkgver.g-$pkgrel-i686.pkg.tar.gz)
md5sums=('bd1ac352d3d7a419630e6e96c5557541')


build() {
  mkdir -p $pkgdir/usr/lib32
  install -D -m555 $srcdir/usr/lib/libcrypto.so.$pkgver $pkgdir/usr/lib32 || return 1
  install -D -m555 $srcdir/usr/lib/libssl.so.$pkgver $pkgdir/usr/lib32 || return 1
}

