pkgname=powertop2
pkgver=1.97
pkgrel=3
pkgdesc="Tool that finds the software that makes your laptop use more power than necessary. Alpha release."
arch=('i686' 'x86_64')
url="http://www.kernel.org/pub/linux/status/powertop/"
license=('GPL2')
depends=('libnl' 'ncurses' 'zlib')
replaces=('powertop')
conflicts=('powertop')
source=(http://www.kernel.org/pub/linux/status/powertop/powertop-$pkgver.tar.bz2)

build() {
  cd "$srcdir/powertop-$pkgver"
  make
}

package() {
  cd "$srcdir/powertop-$pkgver"
  make DESTDIR="$pkgdir" install
}
md5sums=('ddd318fe930c86b3666cad6f40b661bc')
