# Mantainer: Simone Sclavi 'Ito' <darkhado@gmail.com>
pkgname=perl-pod2-it
pkgver=0.13
pkgrel=3
__pname=POD2-IT
pkgdesc='Italian Perldoc Translation Project'
arch=('any')
url='http://pod2it.sourceforge.net'
license=('GPL' 'PerlArtistic')
depends=('perl')
options=(!emptydirs !purge)
source=(http://sourceforge.net/projects/pod2it/files/pod2it/$__pname-$pkgver.tar.gz/download)
md5sums=('1858cde6cd24aa3044a5da85292fe6d2')

build(){
    cd $srcdir/$__pname-$pkgver
    PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 
    make
}
check(){
    cd $srcdir/$__pname-$pkgver
    make test
}
package(){
    cd $srcdir/$__pname-$pkgver
    make install DESTDIR=$pkgdir 
    find ${pkgdir} -name perllocal.pod -delete
    find ${pkgdir} -name .packlist -delete
}
