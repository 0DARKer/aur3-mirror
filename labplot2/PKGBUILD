pkgname=labplot2
_pkgname=labplot
pkgver=2.0.0.beta2
_pkgver=beta2
pkgrel=2
pkgdesc="A free software data analysis and visualization application"
arch=('i686' 'x86_64')
url='http://labplot.sourceforge.net/'
license=('GPL')
depends=('kdelibs' 'hdf5' 'netcdf' 'gsl')
makedepends=('cmake' 'automoc4')
source=("http://downloads.sourceforge.net/labplot/${_pkgname}-${pkgver}.tar.bz2")
md5sums=('f42dee685c8e7940eb110ee3d24b5acf')

build() {
  cd "${srcdir}/${_pkgver}"
  ./compile
}

package() {
  cd "${srcdir}/${_pkgver}/build"
  cmake ./ -DCMAKE_INSTALL_PREFIX=/usr
  cmake ./ -DCMAKE_BUILD_TYPE=Release
  make DESTDIR="${pkgdir}" install
}
