# Contributor: SiD/sidious <miste78@web.de>
# Contributor: jspaces

pkgname=ttf-swfit
pkgver=1
pkgrel=2
pkgdesc="Pixel / LED Fonts designed for Flash"
arch=('i686' 'x86_64')
url="http://www.caoimh.com/flash/FontViewer/fonts/"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
makedepends=('unzip')
install=ttf.install
noextract=('swfit.zip' 'swfit2.zip' 'swfit3.zip')
source=('http://www.caoimh.com/flash/FontViewer/fonts/swfit.zip'
'http://www.caoimh.com/flash/FontViewer/fonts/swfit2.zip'
'http://www.caoimh.com/flash/FontViewer/fonts/swfit3.zip'
'LICENSE')

build() {
cd ${startdir}/src/
unzip -p swfit.zip > swfit_v01.ttf
unzip -p swfit2.zip > swfit_v02.ttf
unzip -p swfit3.zip > swfit_v03.ttf
mkdir -p ${startdir}/pkg/usr/share/fonts/TTF
install -m644 swfit_v01.ttf ${startdir}/pkg/usr/share/fonts/TTF/
install -m644 swfit_v02.ttf ${startdir}/pkg/usr/share/fonts/TTF/
install -m644 swfit_v03.ttf ${startdir}/pkg/usr/share/fonts/TTF/
mkdir -p ${startdir}/pkg/usr/share/licenses/ttf-swfit
install -m644 LICENSE ${startdir}/pkg/usr/share/licenses/ttf-swfit/
}
md5sums=('28a3d22d52bd55d6236ae7a05af5e816'
'14a2f2e2f1c3ef0e464780e00008c9eb'
'5f2fe1835918a14efa150428d7a8c698'
'6e6972a28a8bbbed3bb2b98cde47a96f') 
