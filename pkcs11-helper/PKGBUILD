# Contributor: Martin Perner <skinner33@fictionbox.de>

pkgname=pkcs11-helper
pkgver=1.07
pkgrel=1
pkgdesc="pkcs11-helper is a library that simplifies the interaction with PKCS#11 providers for end-user applications using a simple API and optional OpenSSL engine."
arch=('i686' 'x86_64')
url="http://www.opensc-project.org/pkcs11-helper/"
license=('GPL' 'BSD')
depends=()
optdepends=('openssl')
source=(http://www.opensc-project.org/files/pkcs11-helper/pkcs11-helper-$pkgver.tar.bz2)
md5sums=('d0034481a39af9e840702246e2ffa43e')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$pkgdir install || return 1
}
