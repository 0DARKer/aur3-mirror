# Maintainer: Martin Perner <skinner33@fictionbox.de>

pkgname=pkcs11-helper
pkgver=1.09
pkgrel=1
pkgdesc="pkcs11-helper is a library that simplifies the interaction with PKCS#11 providers for end-user applications using a simple API and optional OpenSSL engine."
arch=('i686' 'x86_64')
url="http://www.opensc-project.org/opensc/wiki/pkcs11-helper"
license=('GPL' 'BSD')
depends=()
optdepends=('openssl')
source=(http://www.opensc-project.org/files/pkcs11-helper/pkcs11-helper-$pkgver.tar.bz2)
md5sums=('88ca59143f1b1d36283cab406f33a3fa')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR="${pkgdir}" install
}
