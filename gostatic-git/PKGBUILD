# Maintainer: Andres Erbsen <andres@krutt.org>

pkgname=gostatic-git
pkgver=1.3
pkgrel=1
pkgdesc="Fast, dependency-tracking static site generator"
url="https://github.com/piranha/gostatic/"
arch=('x86_64' 'i686')
license=('ISC')
makedepends=('go')
options=('!strip' '!emptydirs')
_goimportpath="github.com/piranha/gostatic"

prepare() {
  source /etc/profile.d/go.sh
  export GOPATH="$srcdir"
  go get -d -u "$_goimportpath"
}

build() {
  source /etc/profile.d/go.sh
  export GOPATH="$srcdir"
  go get "$_goimportpath"
}

package() {
  install -Dm755 "$srcdir/bin/gostatic" "$pkgdir/usr/bin/gostatic"
  install -Dm644 "$srcdir/src/$_goimportpath/LICENSE" "$pkgdir/usr/share/licenses/gostatic/LICENSE"
}

# vim:set ts=2 sw=2 et:
