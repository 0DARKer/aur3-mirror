# Maintainer:  Pieter Verschueren <pieter.verschueren@gmail.com>

pkgname=spotlite
pkgver=1.0.5
pkgrel=1
pkgdesc="Usenet spot database"
url="http://www.spot-net.nl/spotlite/"
license=('custom')
makedepends=('deb2targz')
arch=('i686' 'x86_64')
depends=('qt' 'openssl-compatibility') 
if [ "$CARCH" = "i686" ]; then
   source=(https://s3.amazonaws.com/spotlite/spotlite-i386.deb)
    md5sums=('ad9ac42adc56557bfd194b7d1d84590f')

elif [ "$CARCH" = "x86_64" ]; then
    source=(https://s3.amazonaws.com/spotlite/spotlite-amd64.deb)
    md5sums=('728c7463424111d26774976809fc950a')

fi
optdepends=()

build() {
if [ "$CARCH" = "i686" ]; then
  deb2targz ${srcdir}/spotlite-i386.deb
  tar -xf ${srcdir}/spotlite-i386.tar.gz

elif [ "$CARCH" = "x86_64" ]; then
  deb2targz ${srcdir}/spotlite-amd64.deb
  tar -xf ${srcdir}/spotlite-amd64.tar.gz

fi

  cp -R ${srcdir}/usr ${pkgdir}/

}


