pkgname=glportal
pkgver=0.0.7
pkgrel=1
pkgdesc="Simple OpenGL puzzle game inspired by portal"
arch=('i686' 'x86_64')
url="http://glportal.de/"
license=(zlib)
depends=('assimp' 'sdl2_mixer' 'glew')
makedepends=('cmake')
source=("glportal-$pkgver::git+https://github.com/GlPortal/glPortal.git")
md5sums=('SKIP')

prepare () {
  cd "$srcdir/glportal-$pkgver"
}

build () {
  cd "$srcdir/glportal-$pkgver"
  mkdir -p build && pushd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. 
  make
}

package () {
  cd "$srcdir/glportal-$pkgver/build"
  make install DESTDIR="$pkgdir"
}
