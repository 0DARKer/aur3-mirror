# Maintainer: Graziano Giuliani <graziano.giuliani@gmail.com>
pkgname=biosdevname
pkgver=0.3.8
pkgrel=1
pkgdesc="Udev helper for naming devices per BIOS names"
arch=(i686 x86_64)
url="http://linux.dell.com/files/biosdevname"
license=('GPL')
depends=(glibc)
makedepends=(pciutils zlib)
source=(http://linux.dell.com/files/${pkgname}/permalink/${pkgname}-${pkgver}.tar.gz)
md5sums=('93c7bc3859033534ace6c2556b5b6bba')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --disable-rpath --libdir=/lib --prefix=/ \
    --bindir=/bin --sbindir=/sbin --mandir=/usr/share/man
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
