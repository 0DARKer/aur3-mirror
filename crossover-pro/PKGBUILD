# Contributor: adamruss
# Contributor: LTSmash <lord.ltsmash@gmail.com>
pkgname=crossover-pro
pkgver=9.1.0
pkgrel=1
pkgdesc="Allows you to use Windows apps in a stable and supported envirnment (non-free Wine)"
arch=('i686')
depends=()
makedepends=("deb2targz")
provides=("crossover")
conflicts=("crossover" "crossover-games" "crossover-standart")
replaces=()
url="http://www.codeweavers.com"
license=('custom')
source=(http://media.codeweavers.com/pub/crossover/cxlinux/demo/${pkgname}-demo_${pkgver}-1_i386.deb)
install=crossover.install
options=(!strip)

md5sums=('34a2268bcb5a63885f0e94a1540b1bca')

build() {
	cd $srcdir/
	deb2targz ${pkgname}-demo_${pkgver}-1_i386.deb
	tar xf ${pkgname}-demo_${pkgver}-1_i386.tar.gz -C $startdir/pkg
	rm $startdir/pkg/opt/cxoffice/doc # symbolic link
	mv $startdir/pkg/usr/share/doc $startdir/pkg/opt/cxoffice/
	rm $startdir/pkg/usr -r
}
