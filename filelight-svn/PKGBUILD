pkgname=filelight-svn
pkgver=1013878
pkgrel=1
pkgdesc="A KDE program that creates a complex, but data-rich graphical representation of the files and directories on your computer."
arch=('i686' 'x86_64')
url="http://methylblue.com/filelight/"
license=('GPL')
depends=('kdelibs')
makedepends=('subversion' 'cmake' 'automoc4')
provides=(filelight)
conflicts=(filelight)
source=()
md5sums=()
_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/playground/utils/filelight
_svnmod=filelight-svn

build() {
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/src/$_svnmod -DCMAKE_INSTALL_PREFIX=/usr

  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  install -dm755 ${pkgdir}/usr/share/pixmaps
  ln -s /usr/share/icons/hicolor/64x64/apps/filelight.png \
        ${pkgdir}/usr/share/pixmaps/

  #clean up build directory
  rm -rf $startdir/src/$_svnmod-build
}
