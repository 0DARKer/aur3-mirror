# Contributor uastasi <uastasi@archlinux.us>

pkgname=pidgin-libnotify-notify-osd
realname=pidgin-libnotify
pkgver=0.14
pkgrel=3
arch=('i686' 'x86_64')
pkgdesc="Patched pidgin-libnotify version for notify-osd"
url="http://gaim-libnotify.sourceforge.net/"
license=('GPL')
depends=('pidgin' 'libnotify' 'perlxml' 'gettext')
makedepends=('libtool' 'intltool')
replaces=('gaim-libnotify')
conflicts=('pidgin-libnotify')
provides=('pidgin-libnotify')
source=(http://downloads.sourceforge.net/sourceforge/gaim-libnotify/$realname-$pkgver.tar.gz 
pidgin-notify-osd.patch)
md5sums=('bfb5368b69c02d429b2b17c00a6673c0'
         '360ac376062764c4698287c89f34ac91')
build() {
  cd $startdir/src/$realname-$pkgver
  patch -i ../pidgin-notify-osd.patch ./src/pidgin-libnotify.c
  ./configure --prefix=/usr --disable-deprecated
  make || return 1
  make DESTDIR=$startdir/pkg install
}
