pkgname=meshpy
pkgver=0.91.1
pkgrel=1
pkgdesc="quality triangular and tetrahedral mesh generation for Python"
arch=('i686')
url="http://pypi.python.org/pypi/MeshPy/"
license=('GPL')
groups=()
depends=('python' 'boost')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://pypi.python.org/packages/source/M/MeshPy/MeshPy-$pkgver.tar.gz)
noextract=()
md5sums=('e10c07cdec47532161273e032bb9557c') #generate with 'makepkg -g'

build() {
    cd "$srcdir/MeshPy-$pkgver"
    
    ./configure --boost-python-libname=boost_python
    python setup.py install --root=$pkgdir
}
