# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Contributor: Your Name <youremail@domain.com>
pkgname=fluxbox-styles
pkgver=1
pkgrel=1
pkgdesc="tenr styles for fluxbox, no md5sums as it's a nightly tarball"
arch=('i686' 'x86-64')
url="http://www.tenr.de"
license=('GPL')
groups=()
depends=('fluxbox')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://tenr.de/styles/archives/tenr.de-styles-pkg.tar.bz2)
#noextract=()
#md5sums=() #generate with 'makepkg -g'

build() {
  

   mkdir -p  ${pkgdir}/${HOME}/.fluxbox/styles
   cd ${srcdir}/tenr.de-styles-pkg/
   cp -a * ${pkgdir}/${HOME}/.fluxbox/styles 
}

