pkgname=python2-hexdump
_srcname=hexdump
_hghash=c00238474d2a
_author='techtonik'
pkgver=3.1
pkgrel=1
pkgdesc='Cross-platform Python 2/3 library and tool to work with hex and binary data.'
arch=('any')
url='https://bitbucket.org/techtonik/hexdump'
license=('Public Domain')
depends=('python2')
source=("https://bitbucket.org/techtonik/${_srcname}/get/${pkgver}.tar.bz2")
sha512sums=('4d8bb5cd649154fc3e44411eae5c515d1eec1c0a7afe31cbf6ee8e16071747ef261ec18c832037af05926014fc9860b5654f811d92e2ee5b907e04c7a822051c')

check() {
	cd "${_author}-${_srcname}-${_hghash}"
	/usr/bin/env python2 hexdump.py --test test.txt
	diff -u3 hextest.txt test.txt
}

package() {
	cd "${_author}-${_srcname}-${_hghash}"
	/usr/bin/env python2 setup.py install --root="${pkgdir}" -O1 --prefix=/usr
}

