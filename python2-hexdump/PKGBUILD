# Contributor: Levente Polyak <levente[at]leventepolyak[dot]net>

pkgname=python2-hexdump
_srcname=hexdump
_hghash=e49c14742006
_author='techtonik'
pkgver=2.0
pkgrel=2
pkgdesc='Cross-platform Python 2/3 library and tool to work with hex and binary data.'
arch=('any')
url='https://bitbucket.org/techtonik/hexdump'
license=('Public Domain')
depends=('python2')
source=("https://bitbucket.org/techtonik/${_srcname}/get/${pkgver}.tar.bz2")
sha512sums=('dae5769e28729f4cee948735e06cc81f4b2fce6376de7cc471d2ba38318bcd8ec2208e41b21bb92c81487f6da83e3405853d1ff38013056cf4a7623a9fc19432')

check() {
	cd "${_author}-${_srcname}-${_hghash}"
	/usr/bin/env python2 hexdump.py --test test.txt
	diff -u3 hextest.txt test.txt
}

package() {
	cd "${_author}-${_srcname}-${_hghash}"
	/usr/bin/env python2 setup.py install --root="${pkgdir}" -O1
}

