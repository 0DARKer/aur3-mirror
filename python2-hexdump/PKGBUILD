# Maintainer: knucker <www.knucker [at] gmail.com>

pkgname=python2-hexdump
_srcname=hexdump
pkgver=2.0
pkgrel=1
pkgdesc='Cross-platform Python 2/3 library and tool to work with hex and binary data.'
arch=('any')
url='https://pypi.python.org/pypi/hexdump'
license=('GPL')
depends=('python2')
source=("https://pypi.python.org/packages/source/h/${_srcname}/${_srcname}-${pkgver}.zip")
sha512sums=('9244ebd402848d89cb12b819cb189cd610e5f1922fccccb5886a768d8fb1f6beb73c4081fa11e7e268ba7a62d2640ac4109d6f2283ecd7dab8e05b31885ca4f5')

check() {
	cd $_srcname-$pkgver
	python2 hexdump.py --test /tmp/hexdump_test.txt
}

package() {
	cd $_srcname-$pkgver
	python2 setup.py install --root="$pkgdir" -O1
}

