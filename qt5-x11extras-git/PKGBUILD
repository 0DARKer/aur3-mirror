# Contributor: Andrea Scarpino <andrea@archlinux.org>
# Contributor: Pier Luigi Fiorini <pierluigi.fiorini@gmail.com>

pkgname=qt5-x11extras-git
pkgver=v5.2.0.8.gd229dec
pkgrel=1
pkgdesc="A cross-platform application and UI framework (QtX11Extras)"
arch=('i686' 'x86_64')
url="http://qt-project.org/"
license=('GPL3' 'LGPL')
depends=('qt5-base')
makedepends=('git')
provides=('qt5-x11extras')
conflicts=('qt5-x11extras')
source=("git://gitorious.org/qt/qtx11extras.git#branch=dev")
sha256sums=('SKIP')
_gitname="qtx11extras"

pkgver() {
	cd "$srcdir/$_gitname"
	git describe --always | sed 's|-|.|g'
}

build() {
	cd "$srcdir/$_gitname"
	qmake
	make
}

package() {
	cd "$srcdir/$_gitname"
	make INSTALL_ROOT="$pkgdir" install
}