pkgname=libnm-qt-git
_gitname=libnm-qt
pkgver=bf39115
pkgrel=1
pkgdesc='Qt-only wrapper for NetworkManager API.'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('qt4' 'libmm-qt-git' 'networkmanager')
makedepends=('cmake' 'git')
conflicts=('libnm-qt')
provides=('libnm-qt')
groups=('kde-git')
source=('git://anongit.kde.org/libnm-qt')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $srcdir
  
  msg "GIT checkout done"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi
  mkdir $srcdir/build
  cd $srcdir/build
  cmake $srcdir/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}