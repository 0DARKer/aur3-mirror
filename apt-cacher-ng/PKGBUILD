pkgname=apt-cacher-ng
pkgver=0.6
pkgrel=1
pkgdesc="A caching proxy specialized for package files."
url="http://www.unix-ag.uni-kl.de/~bloch/acng/"
arch=('i686' 'x86_64')
license=('custom')
depends=('zlib' 'bzip2' 'fuse')
source=("http://ftp.debian.org/debian/pool/main/a/apt-cacher-ng/apt-cacher-ng_${pkgver}.orig.tar.gz" 'apt-cacher-ng.rc.d')

build() {
  _bins="${startdir}/pkg/usr/bin"
  _confs="${startdir}/pkg/etc/${pkgname}"
  _docs="${startdir}/pkg/usr/share/docs/${pkgname}"

  cd ${srcdir}/${pkgname}-${pkgver}
  make all || return 1

  mkdir -p $_bins
  mkdir -p $_confs
  mkdir -p $_docs

  cp -rf conf/* $_confs/
  cp -rf doc/* $_docs/

  install -m775 build/apt-cacher-ng $_bins/
  install -m775 build/acngfs $_bins/
  install -m775 build/in.acng $_bins/

  install -D -m755 $srcdir/apt-cacher-ng.rc.d $pkgdir/etc/rc.d/apt-cacher-ng
  mkdir -p ${pkgdir}/var/log/apt-cacher-ng
  mkdir -p ${pkgdir}/var/cache/apt-cacher-ng
}

md5sums=('17a63bf81455c725a9f298c908d3f915'
         '995371eac5755941249378201f696c0c')
