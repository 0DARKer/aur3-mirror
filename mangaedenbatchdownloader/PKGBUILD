# Maintainer: Red Squirrel <iam at redsquirrel87 dot com>

pkgname=mangaedenbatchdownloader
pkgver=3.0
pkgrel=1
pkgdesc="A simple tool to download in batch manga chapters from MangaEden.com"
arch=('any')
url="http://www.redsquirrel87.com/MangaEden.html"
license=('freeware')
depends=('java-runtime')
install='mangaedenbatchdownloader.install'
source=(https://bitbucket.org/Red_Squirrel/mangaeden.com-batch-downloader/downloads/${pkgname}-AUR-${pkgver}.tar.gz)
md5sums=('7b60a20415b6c63d1ecf185de00d5a4d')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  cp -R opt $pkgdir
  install -Dm644 "mangaeden.desktop" "${pkgdir}/usr/share/applications/mangaeden.desktop"
  install -Dm644 "icon-64x64.png" "${pkgdir}/usr/share/icons/hicolor/64x64/apps/mangaeden.png"
  install -Dm644 "icon-48x48.png" "${pkgdir}/usr/share/icons/hicolor/48x48/apps/mangaeden.png"
  install -Dm644 "icon-32x32.png" "${pkgdir}/usr/share/icons/hicolor/32x32/apps/mangaeden.png"
}

