# Contributor: gem2arch 0.1
# Maintainer: theapodan
pkgname=ruby-htmlentities
_pkgname=htmlentities
pkgver=4.2.0
pkgrel=1
pkgdesc="http://htmlentities.rubyforge.org/"
arch=(any)
url="http://htmlentities.rubyforge.org/"
license=("GPL")
depends=('ruby')
source=(http://gems.rubyforge.org/gems/$_pkgname-$pkgver.gem)
noextract=($_pkgname-$pkgver.gem)

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_pkgname-$pkgver.gem
}
md5sums=('4f969adda1916cc6f724eb478ea6d215')
