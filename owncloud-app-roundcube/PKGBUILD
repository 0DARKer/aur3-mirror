pkgname=owncloud-app-roundcube
pkgver=2.0.1
pkgrel=1
pkgdesc="Roundcubemail integration for owncloud"
arch=('any')
url="http://apps.owncloud.com/content/show.php/?content=151523"
license=('GPL')
depends=('owncloud')
makedepends=()
options=('!strip')
source=("$pkgname-$pkgver.zip::https://github.com/hypery2k/owncloud/releases/download/v$pkgver/roundcube.zip")
md5sums=('26f9b39dd2fb9b0cdfcadbcc2109640c')

package() {
  install -d ${pkgdir}/usr/share/webapps/owncloud/apps
  cp -a ${srcdir}/roundcube ${pkgdir}/usr/share/webapps/owncloud/apps/roundcube
}
