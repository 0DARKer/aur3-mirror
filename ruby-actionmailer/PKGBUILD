# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-actionmailer
_gemname=${pkgname#ruby-}
pkgver=3.2.11
pkgrel=1
pkgdesc="Is the Rails framework which handles email delivery."
arch=('any')
url="http://www.rubyonrails.org"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-mail' 'ruby-actionpack')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
sha256sums=('d662519c476570cd2d6c2410348c5e55980e4b210829db33c59896ef6698488a')

package() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
