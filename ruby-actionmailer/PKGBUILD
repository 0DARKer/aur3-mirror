# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-actionmailer
gemname=actionmailer
pkgver=3.0.9
pkgrel=1
pkgdesc="Is the Rails framework which handles email delivery."
arch=(any)
url="http://www.rubyonrails.org/"
license=('MIT')
depends=('ruby' 'ruby-mail22x' 'ruby-actionpack')
source=(http://rubygems.org/downloads/${gemname}-${pkgver}.gem)
noextract=(${gemname}-${pkgver}.gem)
md5sums=('22c5c488572e866fa2a2c950ceaf392f')

build() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${gemname}-${pkgver}.gem
}
