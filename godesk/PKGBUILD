# Package build for the linux oDesk Team client
# Maintainer: Stephen Weinberg <[firstname]@q5comm.com>

pkgname=godesk
pkgver=2.0.0
pkgrel=2
pkgdesc="The oDesk Team client for odesk.com"
arch=('i686' 'x86_64')
url="http://www.odesk.com/downloads"
license=('custom:ODESK TEAM LICENSE AGREEMENT')
install=godesk.install
source=("http://www.odesk.com/community/system/files/godesk-$pkgver-static.tar.bz2"
        "godesk.desktop")
md5sums=('7eaa8c46f18847139653b9e9d0570c8b'
         '6cac28eae254918a9646ab11ced6f819')

build() {
    cp -R "$srcdir"/godesk/* "$pkgdir" || return 1

    # Move licence to licences dir
    mkdir -p $pkgdir/usr/share/licenses/godesk
    mv "$pkgdir/usr/share/godesk/COPYING" "$pkgdir/usr/share/licenses/godesk/COPYING"

    # Install .desktop file
    install -D -m 644 "$srcdir/godesk.desktop" "$pkgdir/usr/share/applications/godesk.desktop" || return 1
}
