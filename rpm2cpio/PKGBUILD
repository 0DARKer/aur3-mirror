pkgname=rpm2cpio
pkgver=20020306
pkgrel=3
arch=('any')
pkgdesc="Convert .rpm files for extraction with /usr/bin/cpio"
url="http://www.iagora.com/~espel/rpm2cpio"
depends=('bzip2' 'gzip' 'perl')
license=('custom')
source=(http://www.iagora.com/~espel/rpm2cpio)
md5sums=('4840560d114b469ebf5a3eea690319fa')

build() {
  install -D -m 0755 $srcdir/$pkgname $pkgdir/usr/bin/rpm2cpio.pl
  install -d     $pkgdir/usr/share/licenses/$pkgname
  echo "For the license look into the script itself." > \
    $pkgdir/usr/share/licenses/$pkgname/license 
}
