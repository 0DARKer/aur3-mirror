# Maintainer: Carl George <carl@carlgeorge.us>

_pyver="2" # set to 2 for py2, leave blank for py3
pkgname="supernova"
pkgver="1.0.2"
pkgrel="1"
pkgdesc="Use novaclient with multiple OpenStack nova environments the easy way"
arch=("any")
url="https://github.com/major/supernova"
license=("Apache")
depends=("python${_pyver}" "python${_pyver}-novaclient" "python${_pyver}-keyring")
makedepends=("python${_pyver}-setuptools")
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('aa1b4582b5e243c1e8f711b160e717adb749fb482fe7f8c3910b8c8ec15867cf')

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	python${_pyver} setup.py install --root=${pkgdir} --optimize=1
}
