# Maintainer : Sergei Lebedev <superbobry@gmail.com>

pkgname=ocaml-syslog
pkgver=1.4
pkgrel=1
pkgdesc="syslog protocol implementation for OCaml"
arch=('i686' 'x86_64')
url="http://homepage.mac.com/letaris/"
license=('LGPL')
source=(http://homepage.mac.com/letaris/syslog-$pkgver.tar.gz)
md5sums=('3042185e6f511aea9956cd8f172b1a84')
makedepends=('ocaml-findlib')
options=(!strip !makeflags)

build () {
  cd "$srcdir/${pkgname/ocaml-/}-$pkgver"
  make || return 1
}

package () {
  cd "$srcdir/${pkgname/ocaml-/}-$pkgver"

  OCAMLFIND_DESTDIR="${pkgdir}$(ocamlfind printconf destdir)"

  mkdir -p "${OCAMLFIND_DESTDIR}"
  OCAMLFIND_DESTDIR=$OCAMLFIND_DESTDIR make install || return 1
}
