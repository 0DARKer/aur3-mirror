# Maintainer:   Lucky <archlinux@builds.lucky.li>
# Based on r8168 [community] & r8168-ck (https://aur.archlinux.org/packages.php?ID=56657)

pkgname=r8168-openvz-testing
_realname=r8168
pkgver=8.030.00
pkgrel=2
pkgdesc="A kernel module for Realtek 8168 network cards for linux-openvz-testing"
url="http://www.realtek.com.tw"
license=("GPL")
arch=("i686" "x86_64")
depends=("glibc" "linux-openvz-testing>=2.6.32" "linux-openvz-testing<2.6.33")
makedepends=("linux-openvz-testing-headers")
source=("http://r8168.googlecode.com/files/${_realname}-${pkgver}.tar.bz2")
install="${_realname}.install"
md5sums=("3205d895dbdc7564ba60b71acb308417")
sha256sums=("1b2267703c83f1709cad115cc39b11e8c4b64e7944452c684ef2bd86c626d6c4")

_extramodules="extramodules-2.6.32-openvz-testing"
_kernver="$(cat "/lib/modules/${_extramodules}/version" || true)"

build() {
	cd "${srcdir}/${_realname}-${pkgver}"
#  make clean BASEDIR="/lib/modules/${_kernver}" modules  # r8168-ck
#  make clean SYSSRC="/usr/src/linux-${_kernver}" modules # r8168
# r8168-lts
  make -C "/lib/modules/${_kernver}/build" SUBDIRS="${srcdir}/${_realname}-${pkgver}/src" EXTRA_CFLAGS="-DCONFIG_R8168_NAPI -DCONFIG_R8168_VLAN" modules
}

package() {
	cd "${srcdir}/${_realname}-${pkgver}/src"
	install -Dm644 "${_realname}.ko" "${pkgdir}/lib/modules/${_extramodules}/${_realname}.ko"
	find "${pkgdir}" -name '*.ko' -exec gzip -9 {} \;
}
