# Maintainer: Max Roder <maxroder@web.de>

pkgname='jondobrowser'
pkgver='0.3.1'
pkgrel='2'
_language='en-US'
pkgdesc='Firefox tweaked to work with jondo (anonymous browsing) (english version)'
url='https://anonymous-proxy-servers.net/en/jondobrowser.html'
arch=('x86_64' 'i686')
license=('GPL')
depends=('java-runtime')
optdepends=('zenity: simple dialog boxes'
			'kdialog: KDE dialog boxes'
			'notify-send: Gnome dialog boxes'
			'jondo: connection to jondo proxy cascades, gui version'
			'jondoconsole: connection to jondo proxy cascades, cli version')
install="${pkgname}.install"
source=("https://anonymous-proxy-servers.net/en/downloads/JonDoBrowser-${pkgver}-linux-${CARCH}-${_language}.tar.bz2"
		"https://anonymous-proxy-servers.net/en/downloads/JonDoBrowser-${pkgver}-linux-${CARCH}-${_language}.tar.bz2.asc")
if [[ "$CARCH" == 'x86_64' ]]; then
	sha256sums=('c477946c988a70c1d09cc238755350bf19f29373a16cbecdafa612d338a2600b'
				'afea57e1a1bfd76cf5b0e846018e778b5ba6fcb523a9041085c134a86f561efe')
else
	sha256sums=('5973ef0dffb3fe8aeced389944ab95a1e414fa161405173537b6b61ee04e74dc'
				'9dfc823068a444802ab6f2f14fa2588bfe80a4e0b34e70b3af16d412cdd587f4')
fi

package() {
	cd "${srcdir}/JonDoBrowser/"

	sed -i "s/usr\/local/usr/g"	misc/applications/${pkgname}.desktop

	install -Dm 644 misc/applications/${pkgname}.desktop	${pkgdir}/usr/share/applications/${pkgname}.desktop
	install -Dm 644 misc/pixmaps/${pkgname}.png	${pkgdir}/usr/share/pixmaps/${pkgname}.png
	install -Dm 755 misc/bin/${pkgname}	${pkgdir}/usr/bin/${pkgname}
	install -Dm 644 CHANGELOG	${pkgdir}/usr/share/doc/${pkgname}/CHANGELOG

	install -d	${pkgdir}/opt/JonDoBrowser
	cp -r App	${pkgdir}/opt/JonDoBrowser/
	cp -r Data	${pkgdir}/opt/JonDoBrowser/
	
}

