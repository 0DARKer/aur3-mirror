# Contributor: Daniel Chesters <onizuka92@free.fr>
pkgname=fuego
pkgver=0.4
pkgrel=1
pkgdesc="Fuego is a collection of C++ libraries for developing software for the game of Go. This package provide a Go engine"
arch=(i686 x86_64)
url="http://fuego.sourceforge.net/"
license=('LGPL')
groups=()
depends=(boost)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://downloads.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz" "gcc_43.patch")
noextract=()

build() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -p1 < ../gcc_43.patch
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
md5sums=('9852897066d5d3b3b97b69527847f82f'
         '8e8058b0148f8ac4bed7f2443970a02b')
