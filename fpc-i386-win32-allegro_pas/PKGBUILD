pkgname=fpc-i386-win32-allegro_pas
pkgver=4.4.3
pkgrel=1
pkgdesc="Allegro.pas is a wrapper to use Allegro with Pascal compilers (i386-win32)"
arch=(any)
url="http://allegro-pas.sourceforge.net/"
license=('unknown')
depends=('fpc-cross-i386-win32')
makedepends=('fpc-cross-i386-win32')
optdepends=('mingw32-allegro4: Allegro DLL and tools compiled for MinGW')
source=("http://downloads.sourceforge.net/allegro-pas/allegro.pas-$pkgver-src-pas.tar.bz2")
md5sums=('d289929fb13320bdca0fdc3a0944adf8')

build() {
  cd ${srcdir}/allegro.pas/lib
  ppcross386 -Twin32 al3d.pas
  ppcross386 -Twin32 alblend.pas
  ppcross386 -Twin32 alfile.pas
  ppcross386 -Twin32 alflic.pas
  ppcross386 -Twin32 algui.pas
  ppcross386 -Twin32 alvga.pas
  
  mkdir -p $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/allegro
  mv *.o $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/allegro
  mv *.ppu $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/allegro
  mv *.a $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/allegro
}