# Maintainer:  TDY <tdy@gmx.com
# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=oboinus
pkgver=1.2
pkgrel=2
pkgdesc="An X11 background previewer and setter"
arch=('any')
url="http://oboinus.googlecode.com/"
license=('GPL')
depends=('feh' 'pygtk>=2.6.0')
source=(http://$pkgname.googlecode.com/files/${pkgname}_$pkgver.tar.gz)
md5sums=('c6273d69963705259460f524c03d52d4')

build() {
  cd "$srcdir/$pkgname"
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 $pkgname.1 "$pkgdir/usr/share/man/man1/$pkgname.1"
}
