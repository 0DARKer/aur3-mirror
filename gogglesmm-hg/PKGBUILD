# Maintainer: Sander Jansen <s.jansen@gmail.com>
pkgname=gogglesmm-hg
pkgver=428
pkgrel=1
pkgdesc="Goggles Music Manager"
arch=('i686' 'x86_64' 'arm')
url="http://code.google.com/p/gogglesmm/"
license=('GPL3')
conflicts=('gogglesmm')
depends=('fox-devel>=1.7.37' 'libogg' 'libvorbis' 'flac' 'libmad' 'faad2' 'libxml2' 'opus' 'dbus-core' 'taglib>=1.7.0' 'sqlite3' 'libgcrypt')
makedepends=('mercurial' 'pkgconfig' 'libpulse' 'alsa-lib' 'librsvg' 'glproto' 'dri2proto' )
optdepends=('libpulse: PulseAudio Output' 'alsa-lib: Alsa Output')

md5sums=() #generate with 'makepkg -g'

_hgroot="http://code.google.com/p"
_hgrepo="gogglesmm"

build() {
  msg "Starting build..."
  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

	export RESWRAP=/usr/bin/reswrap-1.7
  ./configure
  make
  make svg2png
}

package() {
  cd "$srcdir/$_hgrepo-build"
  make DESTDIR="$pkgdir" install
}

