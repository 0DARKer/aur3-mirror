# Contributor: Steff <archuserrepository at gmx dot de>
pkgname=dudenbib
pkgver=5.1.0
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.duden.de/deutsche_sprache/index.php?nid=185"
if [ "$CARCH" = "x86_64" ]; then
        depends=('bash' 'deb2targz' 'lib32-libxmu' 'lib32-libxft' 'lib32-libxcursor' 'lib32-libxrandr' 'lib32-gcc-libs' 'lib32-libxi')
else
        depends=('bash' 'deb2targz' 'libxmu' 'libxft' 'libxcursor' 'libxrandr' 'gcc-libs' 'libxi')
fi
pkgdesc="Utility to view books from Duden, Brockhaus and some others"
source=(http://www.duden-downloadshop.de/freedownloads/$pkgname-$pkgver-$pkgrel-debian-ubuntu.deb)
noextrct=($pkgname-$pkgver-$pkgrel-debian-ubuntu.deb)
license=('custom:dudenbib')
build() {
	deb2targz $startdir/src/$pkgname-$pkgver-$pkgrel-debian-ubuntu.deb
	tar -xzvf $startdir/src/$pkgname-$pkgver-$pkgrel-debian-ubuntu.tar.gz -C $startdir/pkg
        chown -R root:root $startdir/pkg
        rm $startdir/pkg/usr/share/applications/dudenbib.desktop
}
md5sums=('f21dd1de601fccc43b3f0417f0c229d4')
