pkgname=mrbayes
pkgver=3.1.2
pkgrel=1
pkgdesc="A program for the Bayesian estimation of phylogeny"
arch=('i686' 'x86_64')
license=('GPL')
url="http://mrbayes.csit.fsu.edu"
depends=('readline')
makedepends=('gcc')
source=(http://downloads.sourceforge.net/mrbayes/${pkgname}-${pkgver}.tar.gz mb.1)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make || return 1
  install -D -m755 mb ${pkgdir}/usr/bin/mb || return 1
  install -D -m644 ../mb.1 ${pkgdir}/usr/share/man/man1/mb.1 || return 1
}
md5sums=('942e4e0a90fa23481bb1f2e0fa0e0d66'
         'f7148b480f1c0c4d7be73c5c4d84a194')
