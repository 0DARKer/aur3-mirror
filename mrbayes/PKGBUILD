pkgname=mrbayes
pkgver=3.1.2
pkgrel=2
pkgdesc="A program for the Bayesian estimation of phylogeny"
arch=('i686' 'x86_64')
license=('GPL')
url="http://mrbayes.csit.fsu.edu"
depends=('readline')
source=(http://downloads.sourceforge.net/mrbayes/${pkgname}-${pkgver}.tar.gz mb.1 mcmcdiagnparamprint.patch 64bit-safe.patch)
md5sums=('942e4e0a90fa23481bb1f2e0fa0e0d66'
         'f7148b480f1c0c4d7be73c5c4d84a194'
         '71456a25cab345bd4686b050a5468cb2'
         '6b62ab2b01e20d52e4b12f7ea8a4ba23')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p1 < ../../mcmcdiagnparamprint.patch
  [ "$CARCH" = "i686" ] && make
  [ "$CARCH" = "x86_64" ] && patch -R -p1 < ../../64bit-safe.patch
  [ "$CARCH" = "x86_64" ] && OBJECT_MODE=64 make _64BIT=yes
  install -D -m755 mb ${pkgdir}/usr/bin/mb
  install -D -m644 ../mb.1 ${pkgdir}/usr/share/man/man1/mb.1
}
