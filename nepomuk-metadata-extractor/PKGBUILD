# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=nepomuk-metadata-extractor
pkgver=0.1
pkgrel=1
pkgdesc="Finds additional metadata on the internet (via Python plugins) and adds it to nepomuk"
arch=('i686' 'x86_64')
url="https://projects.kde.org/projects/playground/base/nepomuk-metadata-extractor"
license=('GPL')
depends=('nepomuk-core' 'poppler-qt')
makedepends=('cmake' 'automoc4' 'doxygen')
install=
source=("nepomuk-metadata-extractor.tar.gz::http://quickgit.kde.org/index.php?p=nepomuk-metadata-extractor.git&a=snapshot&h=927599fcf2565ef59a71fc9f9d4f2f0be98bfd96&fmt=tgz")
md5sums=('8cd0ab68b3cbfbc71b6de7d99a2f0904')

build() {
  cd $srcdir/$pkgname
  mkdir build
  cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/$pkgname/build
  make DESTDIR=$pkgdir install

# fix conflicts with nepomuk-core
  rm -fr $pkgdir/usr/share/dbus-1
}
