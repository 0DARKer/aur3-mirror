pkgname=apache-ant-manual
pkgver=1.8.1
pkgrel=1
pkgdesc="Apache Ant Manual"
arch=('any')
url="http://ant.apache.org/"
license=('APACHE')
options=('docs')
source=("http://www.picvi.com/external/apache/ant/manual/apache-ant-${pkgver}-manual.tar.bz2")
md5sums=('c00fb318028173c9021bc74d996fbf14')

build(){
  mkdir -p $pkgdir/usr/share/doc
  cp -r $srcdir/apache-ant-$pkgver $pkgdir/usr/share/doc/apache-ant
}
