pkgname=idesktools-xba
pkgver=0.3.5
pkgrel=3
pkgdesc="Tools for iDesk written in Python"
arch=(i686 x86_64)
url="http://icecc.sourceforge.net/idesktools.html"
license="unknown"
depends=('pyqt3' 'python' 'qt' 'idesk')
source=(http://kent.dl.sourceforge.net/sourceforge/icecc/idesktools-xba-0.3.5.tar.bz2)
md5sums=('c8c4a3c2cadffb8fc08ba8ccfa2f350e')

build() {
  cd $startdir/src/$pkgname-$pkgver
  mkdir -p $startdir/pkg/usr/bin

# Uncomment the following line to install a GUI tool for editing the main configuration file. This seems to break iDesk however.
# install -D -m755 ideskcfg.py $startdir/pkg/usr/bin/ideskcfg

# This is the GUI tool for generating icons:
  install -D -m755 imklnk.py $startdir/pkg/usr/bin/imklnk
}
