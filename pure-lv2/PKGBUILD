# -*- shell-script -*-
# Maintainer: Albert Graef <aggraef@gmail.com>

pkgname=pure-lv2
pkgver=0.1
pkgrel=1
pkgdesc="LV2 plugin interface for Pure"
arch=("i686" "x86_64")
license=('BSD')
url="http://purelang.bitbucket.org/"
depends=('pure' 'lv2')
makedepends=('make' 'gcc')
groups=(pure-complete pure-multimedia)
source=("https://bitbucket.org/purelang/pure-lang/downloads/$pkgname-$pkgver.tar.bz2")
md5sums=('de119619ae7c264ee95207c3461c6a0d')

build() {
	cd $srcdir/$pkgname-$pkgver
	make || return 1
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install || return 1
}
