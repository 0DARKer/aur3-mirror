pkgname=thinkwatt
pkgver=0.1
pkgrel=4
pkgdesc="record power consumption, calculate the average and create a gnuplot graphic"
arch=('any')
url="https://github.com/mikar/thinkwatt"
license=('GPL')
depends=('gawk' 'sed')
optdepends=('gnuplot' 'tp_smapi')
source=(https://github.com/mikar/thinkwatt/raw/master/twat)
md5sums=('d2398907432a6be0fc241f74b3e65831')

build() {
  install -d	${pkgdir}/usr/bin
  install -m755 ${srcdir}/twat ${pkgdir}/usr/bin/
  ln -s /usr/bin/twat ${pkgdir}/usr/bin/thinkwatt
}


