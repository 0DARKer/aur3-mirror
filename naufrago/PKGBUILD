pkgname=naufrago
pkgver=0.3
pkgrel=1
pkgdesc="Naufrago! is a simple offline RSS reader (including images) written in Python."
arch=('any')
url="http://sourceforge.net/projects/naufrago/"
license=('GPL')
depends=('python-feedparser' 'pygtk' 'python-pysqlite' 'python-notify' 'pywebkitgtk')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.bz2 naufrago_launcher.sh naufrago.desktop)

md5sums=('f0e097e38046cb3202209e6c00317782'
         '7d2abc8b6cd0421aeabf07d624a240d7'
         'a0df923165a8a594c13329df1a93b9b9')

build() {
  cd "$srcdir/$pkgname"

  mkdir -p $pkgdir/usr/share/naufrago/
  sed -i "s/distro_package = False/distro_package = True/g" naufrago.py 
  cp -r * $pkgdir/usr/share/naufrago/
  cd ..
  install -Dm755 naufrago_launcher.sh $pkgdir/usr/bin/naufrago_launcher.sh
  install -Dm655 naufrago.desktop $pkgdir/usr/share/applications/naufrago.desktop
  rm $pkgdir/usr/share/naufrago/{naufrago.desktop,naufrago_launcher.sh,update_0.x_to_0.3.py}
  
}

