pkgname=craftbukkit-plugin-essentials-extras
pkgver=2.8.2
pkgrel=2
pkgdesc="Extra plugins for CraftBukkit Essentials"
arch=(any)
url="http://dev.bukkit.org/server-mods/essentials/"
license=('GPLv3')
depends=('craftbukkit-plugin-essentials')
source=("http://tiny.cc/EssentialsExtraZip")
md5sums=('7684290def1a7154983eca7adadba923')

package() {
  mkdir -p "$pkgdir/opt/craftbukkit/plugins"
  install -m 644 "$srcdir/EssentialsGeoIP.jar" "$pkgdir/opt/craftbukkit/plugins/"
  install -m 644 "$srcdir/EssentialsXMPP.jar" "$pkgdir/opt/craftbukkit/plugins/"
}

# vim:set ts=2 sw=2 et:
