# Maintainer: trile7 at gmail dot com

pkgname=gshot
pkgver=0.7.0
pkgrel=2
pkgdesc="Capturing a snapshot/screenshot of the entire screen, a single window or user selected region"
url="http://gshot.googlecode.com"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('bash' 'gtk2' 'gettext' 'intltool')
source=("$url/files/${pkgname}-${pkgver}.tar.xz" "update.patch")

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p0 < ../update.patch
  ./configure --prefix=/usr || return 1
  make || return 1
 make prefix=${pkgdir}/usr install || return 1
}

md5sums=('83d3d29fb8254e627568e6b6de927518'
         'ae9a6f7c859b67cfc1b703671ec06785')
