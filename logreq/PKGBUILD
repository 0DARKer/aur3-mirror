# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=logreq  
pkgver=1.0
pkgrel=1 
pkgdesc="helps to automate a typical LaTeX workflow"
url="http://www.tex.ac.uk/tex-archive/macros/latex/contrib/logreq/"
arch=('any')
license=('LPPL')
depends=('texlive-core')
install=$pkgname.install
source=($pkgname-$pkgver.zip::http://www.tex.ac.uk/tex-archive/macros/latex/contrib/$pkgname.zip)
md5sums=('2ca100558f7c683aff9f1a0065b7a08f')

build() {
  cd $srcdir/$pkgname
  install -Dm644 $pkgname.sty \
    $pkgdir/usr/share/texmf/tex/latex/$pkgname/$pkgname.sty
  install -Dm644 $pkgname.def \
    $pkgdir/usr/share/texmf/tex/latex/$pkgname/$pkgname.def
  install -d $pkgdir/usr/share/doc/$pkgname
  cp -r examples $pkgdir/usr/share/doc/$pkgname
}
