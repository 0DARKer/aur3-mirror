# Maintainer: Schnouki <thomas.jost@gmail.com>
pkgname=veth
pkgver=1.0
pkgrel=3
pkgdesc="A deamon that virtualizes a Ethernet card in Linux"
arch=('i686' 'x86_64')
url="http://w3.epca.com.ve/projects/veth/"
license=('GPL')
depends=('kernel26')
source=(http://w3.epca.com.ve/projects/$pkgname/$pkgname-$pkgver.tar.gz
        vethd.conf
        vethd.rc)
md5sums=('11536388d9c76552a4b736638a458361'
         '22f3ef554311d3d098f54336906a0d2c'
         'd7c1553f1c11fea41cce7f0669734be2')

build() {
  cd $startdir/src/$pkgname-$pkgver/
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  mkdir -p $startdir/pkg/etc/rc.d
  mkdir -p $startdir/pkg/etc/conf.d
  install -m 755 -s veth/vethd $startdir/pkg/usr/bin/
  install -m 755 $startdir/src/vethd.rc $startdir/pkg/etc/rc.d/vethd
  install -m 644 $startdir/src/vethd.conf $startdir/pkg/etc/conf.d/vethd
}

