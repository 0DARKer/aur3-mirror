# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama
pkgver=1.b4
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
depends=('qt' 'ffmpeg')
source=(http://svn.tuxfamily.org/viewvc.cgi/ffdiaporama_trunk.tar.gz?view=tar)
md5sums=('2311ea973a60898e2ff59d78d69ed66b')

build() {
  cd $srcdir/ffdiaporama_trunk/ffDiaporama
  qmake
  make
}

package() {
  cd $srcdir/ffdiaporama_trunk/ffDiaporama
  make install INSTALL_ROOT=$pkgdir
}