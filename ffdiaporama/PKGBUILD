# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama
pkgver=0.99.4
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
depends=('qt' 'ffmpeg')
source=(http://download.tuxfamily.org/${pkgname}/20110911/Sources${pkgname}-${pkgver}.zip)
md5sums=('4110c333d7d40a36ee4f63b784dec2ff')

build() {
  cd ${srcdir}/Sources\ ${pkgname}-${pkgver}/${pkgname}-${pkgver}
  qmake
  make
}

package() {
  cd ${srcdir}/Sources\ ${pkgname}-${pkgver}/${pkgname}-${pkgver}
  make install INSTALL_ROOT=${pkgdir}
}