# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama
pkgver=1.0.0
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
depends=('qt' 'ffmpeg')
source=(http://download.tuxfamily.org/${pkgname}/Stable/1.0_20110926/${pkgname}_${pkgver}.tar.gz)
md5sums=('5f55dceddd07a574f6fb71fb27595a7b')

build() {
  cd ${srcdir}
  qmake
  make
}

package() {
  cd ${srcdir}
  make install INSTALL_ROOT=${pkgdir}
}