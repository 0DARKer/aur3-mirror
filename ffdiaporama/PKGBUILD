# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama
pkgver=1.5
pkgrel=2
pkgdesc="Creation of videos from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama-devel')
depends=('qimageblitz' 'ffmpeg' 'exiv2' 'taglib' 'shared-mime-info')
install=${pkgname}.install
source=(http://download.tuxfamily.org/${pkgname}/Archives/${pkgname}_${pkgver}.tar.gz)
md5sums=('436bf46f981ea8ca1662dd7475b3ac7a')

build() {
  qmake-qt4 PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  make install INSTALL_ROOT=${pkgdir}
}