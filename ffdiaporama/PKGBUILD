# Maintainer: boenki <boenki at gmx dot de>

pkgname=ffdiaporama
pkgver=1.1
pkgrel=1
pkgdesc="Creation of videos sequences from images, titles, music"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
conflicts=('ffdiaporama-devel')
depends=('qt' 'ffmpeg' 'exiv2')
source=(http://download.tuxfamily.org/${pkgname}/Stable/${pkgver}_20111218/${pkgname}_${pkgver}.2011.1218.tar.gz)
md5sums=('3141d8cc4410d6bfd14b194d777a29a2')

build() {
  cd ${srcdir}
  qmake
  make
}

package() {
  cd ${srcdir}
  make install INSTALL_ROOT=${pkgdir}
}