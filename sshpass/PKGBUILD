# Contributor: Sebastien Vasey sebastien dot vasey at gmail dot com

pkgname=sshpass
pkgver=1.04
pkgrel=2
pkgdesc="Fool ssh into accepting an interactive password non-interactively"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/sshpass/"
license=('GPL')
depends=('openssh')
source=(http://downloads.sourceforge.net/sshpass/sshpass-1.04.tar.gz sshpass-1.04-openssh-5.6.patch)
md5sums=('87e7c72e319691c5fdf219f6c7effb4a' '86722d30eb6a872b531985dea14fcd01')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -uN main.c "$srcdir"/sshpass-1.04-openssh-5.6.patch
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

