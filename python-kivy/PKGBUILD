pkgname=python-kivy
pkgver=1.8.0
pkgrel=1
pkgdesc="Modular toolkit for Data Processing"
arch=(any)
url="http://http://kivy.org"
license=(MIT)
depends=(cython python-pygame libgl)
source=("https://pypi.python.org/packages/source/K/Kivy/Kivy-$pkgver.tar.gz")
md5sums=('fc36e08e0cd903a249dca957bdf1e2b0')

build() {
  cd "$srcdir/Kivy-$pkgver"
  export USE_X11=1
  export USE_MESAGL=1

  python setup.py install --root=$pkgdir
}

