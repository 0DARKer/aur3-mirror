# Maintainer: RetroX <classixretrox@gmail.com>
pkgname=networkmanager-dispatcher-ntpd
pkgver=2010.08.28
pkgrel=1
pkgdesc="Dispatcher Script for ntpd"
arch=(any)
license=('BSD')
url="http://wiki.archlinux.org/index.php/NetworkManager#Network_services"
depends=('networkmanager' 'ntp')
source=(20_ntpd)
md5sums=('44a8aaf7f2e11b3af61cc63fa84aee0b')

build() {
  cd ${startdir}/pkg
  mkdir -p etc/NetworkManager/dispatcher.d || return 1
  cd etc/NetworkManager/dispatcher.d
  cp ${startdir}/src/20_ntpd . || return 1
  chmod 700 20_ntpd || return 1
}
