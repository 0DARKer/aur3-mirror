_plug=havsfunc
pkgname=vapoursynth-plugin-${_plug}
pkgver=r6
pkgrel=2
pkgdesc="Plugin for Vapoursynth: ${_plug}"
arch=('i686' 'x86_64')
url="http://forum.doom9.org/showthread.php?t=166582"
license=('GPL')
depends=('vapoursynth')
provides=("vapoursynth-plugin-${_plug}")
conflicts=("vapoursynth-plugin-${_plug}-git")
makedepends=('git')
source=("https://dl.dropbox.com/u/6596386/vapoursynth-plugins/${_plug}-${pkgver}.7z")
sha1sums=('e3aa229bfceaa724b9a3b93668b65619ce74696b')
_sites_packages="$(python -c "from distutils.sysconfig import get_python_lib; print(get_python_lib())")"

package(){
  install -Dm644 "${_plug}.py" "${pkgdir}/${_sites_packages}/${_plug}.py"
}

