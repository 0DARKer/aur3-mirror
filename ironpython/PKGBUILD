# Maintainer: thc_flow <thc@weedsmoker.im>
pkgname=ironpython
pkgver=2.6.2
pkgrel=3
pkgdesc="IronPython"
arch=("any")
url="http://ironpython.net"
license=("APACHE")
depends=('mono>=2.8.0')
makedepends=('xz')
source=(http://files.weedsmoker.im/devel/aur/$pkgname-$pkgver.txz)
md5sums=('d7035aedcc4ca2067595abeccff84b88')

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir/opt/ipy" "$pkgdir/usr/bin"
  cp -r $srcdir/$pkgname-$pkgver/* "$pkgdir/opt/ipy"
  for bin in ipy ipy64 ipyw ipyw64; do
		echo -e '#!/bin/sh\nmono /opt/ipy/ipy.exe $*' > "$pkgdir/usr/bin/$bin"
		chmod +x "$pkgdir/usr/bin/$bin"
	done
}

# vim:set ts=2 sw=2 et:
