# Contributor: onny <onny@project-insanity.org>

# TODO: python-m2crypto in extra should be named python2-m2crypto (bug report!)

pkgname=chapcrack-git
pkgver=20120730
pkgrel=3
pkgdesc="A tool for parsing and decrypting MS-CHAPv2 network handshakes."
arch=('i686' 'x86_64')
url="https://github.com/moxie0/chapcrack"
license="GPL3"
depends=('python2' 'python2-dpkt' 'python-m2crypto' 'python2-passlib')
_gitroot="https://github.com/moxie0"
_gitname="chapcrack"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone "${_gitroot}/${_gitname}.git"
    	cd chapcrack
    git pull --rebase
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."
  
  python2 setup.py build
} 
package () {
  cd "${srcdir}/chapcrack"
  cp README.md README
  touch INSTALL COPYING
  python2 setup.py install --root=${pkgdir}
}

