# Contributor: Byron Clark <byron@theclarkfamily.name>
pkgname=jsvc
_srcname=commons-daemon
pkgver=1.0.5
pkgrel=1
pkgdesc="Native portion of commons-daemon"
arch=('i686' 'x86_64')
url="http://commons.apache.org/daemon/jsvc.html"
license=('APACHE')
depends=()
makedepends=('openjdk6')
source=("http://www.apache.org/dist/commons/daemon/source/${_srcname}-${pkgver}-native-src.tar.gz")
md5sums=('ae68ff6ad1b4e49a378e8b93377ec1fa')

build() {
  cd "${srcdir}/${_srcname}-${pkgver}-native-src"

  cd unix
  LDFLAGS="" ./configure --prefix=/usr
  make
  install -d -m 0755 "${pkgdir}/usr/sbin"
  install -m 0755 jsvc "${pkgdir}/usr/sbin/jsvc"
}

