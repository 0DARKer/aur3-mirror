# Contributor: Byron Clark <byron@theclarkfamily.name>
pkgname=jsvc
_srcname=daemon
pkgver=1.0.1
pkgrel=1
pkgdesc="Native portion of commons-daemon"
arch=('i686' 'x86_64')
url="http://commons.apache.org/daemon/jsvc.html"
license=('APACHE')
depends=()
makedepends=('openjdk6')
source=("http://www.apache.org/dist/commons/${_srcname}/source/${_srcname}-${pkgver}.tar.gz")
md5sums=('df3eb5aafa53ca530843a09d40b8a1c0')

build() {
  cd "${srcdir}/${_srcname}-${pkgver}"

  cd src/native/unix
  LDFLAGS="" ./configure --prefix=/usr
  make || return 1
  install -d -m 0755 "${pkgdir}/usr/sbin"
  install -m 0755 jsvc "${pkgdir}/usr/sbin/jsvc"
}

