# Maintainer: Barthalion <barthalion@gmail.com>

pkgname=kqemu-ck
_kernver=2.6.33-ck
pkgver=1.4.0pre1
pkgrel=1
pkgdesc="QEMU Accelerator Module, which adds virtualization capabilities to qemu for kernel26-ck." 
arch=('i686' 'x86_64')
license=('GPL2' 'BSD')
url="http://www.nongnu.org/qemu/"
depends=('kernel26-ck=2.6.33' 'qemu-legacy')
makedepends=('kernel26-headers=2.6.33')
install=kqemu.install
source=(http://wiki.qemu.org/download/kqemu-$pkgver.tar.gz http://aur.archlinux.org/packages/kqemu/kqemu/LICENSE)
md5sums=('d738d8ca7332211ab716ec3213d82ee1'
	 'ff53106a9b480cf2e43b189920e56c3e')

build()
{
  cd $startdir/src/kqemu-$pkgver
  
  ./configure --kernel-path=/lib/modules/${_kernver}/build
  make || return 1
  install -D -m644 kqemu.ko $startdir/pkg/lib/modules/${_kernver}/misc/kqemu.ko || return 1
  sed -i -e "s/KERNEL_VERSION='.*'/KERNEL_VERSION='${_kernver}'/" $startdir/kqemu.install
  install -D -m644 ../LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1
} 
