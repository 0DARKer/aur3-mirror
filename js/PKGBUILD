# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: perlawk
pkgname=js
pkgver=1.8.5
_pkgver=185
_pkgver2=1.0.0
pkgrel=1 
pkgdesc="spidermonkey:javascript engine in C"
url="http://ftp.mozilla.org/pub/mozilla.org"
arch=(`arch`)
license=('GPL')
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://ftp.mozilla.org/pub/mozilla.org/js/$pkgname${_pkgver}-${_pkgver2}.tar.gz)
md5sums=('a4574365938222adca0a6bd33329cb32')
build() {
  cd $startdir/src/$pkgname-$pkgver/js/src
  ./configure --prefix=/usr --enable-threadsafe --enable-ctypes \
	--with-nspr-cflags=-I/usr/include/nspr --with-nspr-libs=/usr/lib/libnspr4.so 
  make -j4 || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install
  cp shell/js $pkgdir/usr/bin/
}

