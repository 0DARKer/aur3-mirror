#Contributor <lifning> <definelightning@gmail.com>

pkgname=libretro-tgbdual-git
pkgver=20121018
pkgrel=2
pkgdesc="libretro implementation of TGB Dual."
arch=('i686' 'x86_64')
url="http://github.com/libretro/tgbdual-libretro"
license=('GPL')
makedepends=('git')

_gitroot="git://github.com/libretro/tgbdual-libretro.git"
_gitname="retroarch"

build() 
{
   cd $srcdir

   msg "Cloning tgbdual-libretro from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone "$_gitroot" "$_gitname" --depth 1 || return 1
      cd $_gitname
   fi

   make || return 1
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -m755 $srcdir/$_gitname/libretro.so $pkgdir/usr/lib/libretro/libretro-tgbdual.so
}

