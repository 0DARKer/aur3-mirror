options=('!emptydirs')
depends=('perl-array-iterator>=0' 'perl-file-slurp>=0' 'perl-http-message>=0' 'perl-json>=0' 'perl-lwp-protocol-https>=0' 'perl-moo>=0' 'perl-libwww>=0')
makedepends=()
checkdepends=('perl-test-most>=0')
