pkgname=opencl-headers12
pkgver=1.2
pkgrel=2
pkgdesc='OpenCL 1.2 (Open Computing Language) header files'
arch=('any')
url='http://www.khronos.org/registry/cl/'
license=('custom')
optdepends=('libcl: OpenCL library')
provides=('opencl-headers')
conflicts=('opencl-headers')
source=(https://www.khronos.org/registry/cl/api/1.2/opencl.h
        https://www.khronos.org/registry/cl/api/1.2/cl_platform.h
        https://www.khronos.org/registry/cl/api/1.2/cl.h
        https://www.khronos.org/registry/cl/api/1.2/cl_ext.h
        https://www.khronos.org/registry/cl/api/1.2/cl_dx9_media_sharing.h
        https://www.khronos.org/registry/cl/api/1.2/cl_d3d10.h
        https://www.khronos.org/registry/cl/api/1.2/cl_d3d11.h
        https://www.khronos.org/registry/cl/api/1.2/cl_gl.h
        https://www.khronos.org/registry/cl/api/1.2/cl_gl_ext.h
        https://www.khronos.org/registry/cl/api/1.2/cl.hpp
        LICENSE.txt)

package() {
   cd "$srcdir"

   install -dm755 "$pkgdir"/usr/include/CL

   for h in $(ls -1 *.h *.hpp); do
      install -m 644 $h "$pkgdir"/usr/include/CL/
   done

   install -D -m644 "$srcdir"/LICENSE.txt "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

md5sums=('6f511443ae9d2f85146e0c35221c1e7d'
