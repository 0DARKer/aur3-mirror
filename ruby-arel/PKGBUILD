# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-arel
pkgver=2.0.9
pkgrel=1
pkgdesc="Is a Relational Algebra for Ruby."
arch=(any)
url="http://github.com/brynary/arel"
license=('MIT')
depends=('ruby')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/arel-$pkgver.gem)
noextract=(arel-$pkgver.gem)
md5sums=('e6a4c6749efe476ebb71b95354814dfb')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" arel-$pkgver.gem
}
