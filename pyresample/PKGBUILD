pkgname=pyresample
pkgver=0.7.13
pkgrel=1
pkgdesc="Geospatial image resampling in Python"
arch=('any')
url="http://code.google.com/p/pyresample/"
license=('GPL3')
depends=('python2-numpy' 'python2-pyproj' 'python2-configobj')
options=(!emptydirs)
source=(http://pyresample.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('8e9ba53622c748e195bc142c16a6a744')
sha1sums=('e832bca42092bc6272c871f0726df8b3e25fe52e')
sha256sums=('c587221e723bcd9a872a40983d0b83612e68799e0f2bb68f8c93cf94e2245689')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1

}

