pkgname=pyresample
pkgver=0.7.12
pkgrel=1
pkgdesc="Geospatial image resampling in Python"
arch=('any')
url="http://code.google.com/p/pyresample/"
license=('GPL3')
depends=('python2-numpy' 'python2-pyproj' 'python2-configobj')
options=(!emptydirs)
source=(http://pyresample.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('3b0d6888bb4ec2e7598f92c11d2f0bc9')
sha1sums=('7f5033b5d02c6c1ae4ebbab3852acabf4b959d4c')
sha256sums=('717f6239feeae81df1f3b4b7b71300f89394e04ce83cd0ffbfe3f44dd932257f')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1

}

