pkgname=pyresample
pkgver=0.8.0
pkgrel=1
pkgdesc="Geospatial image resampling in Python"
arch=('any')
url="http://code.google.com/p/pyresample/"
license=('GPL3')
depends=('python2-numpy' 'python2-pyproj' 'python2-configobj')
options=(!emptydirs)
source=(http://pyresample.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('057df261ddfe228206d3a247a21267d1')
sha1sums=('d22b12c01e1297177b459dccc1f086e4a793ca9f')
sha256sums=('79bd4bc337a049f746166ff94780cf492ea68aebbf8a21f1f3252ef47aecc29c')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1

}

