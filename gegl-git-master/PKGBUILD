pkgname=gegl-git-master
pkgver=0.1.7
pkgrel=1
arch=('i686' 'x86_64')

pkgdesc='GEGL (Generic Graphics Library) is a graph based image processing framework.'
license=('GPL')
url='http://www.gegl.org/'
#For CHANGELOGS: http://gimptest.flamingtext.com:8080/job/gegl-distcheck/changes
conflicts=('gegl' 'gegl-git')
provides=('gegl')
depends=('glib2>=2.10' 'babl-git-master' 'libpng' 'ruby')
optdepends=('sdl' 'libjpeg' 'openexr' 'pango' 'librsvg' 'graphviz')

source=("http://gimptest.flamingtext.com:8080/job/gegl-distcheck/lastSuccessfulBuild/artifact/gegl-git-master.tar.bz2")
#source=("http://www.pumbur.net/file/gegl-$pkgver.tar.bz2")
md5sums=('75daf58fd2bc3a9aebd0fe87ae8a7f5a')

build() {
	cd $srcdir/gegl-$pkgver
	./configure --prefix=/usr --disable-docs
	make
}
package(){
	cd $srcdir/gegl-$pkgver
	make DESTDIR="$pkgdir" install
}
