# Contributor: David Langenberg <davel@uchicago.edu>
pkgname=jtds
pkgver=1.2.2
pkgrel=1
pkgdesc="JDBC library for talking to Microsoft SQL Servers"
url="http://jtds.sourceforge.net"
license="LGPL"
depends=('j2re')
source=(http://internap.dl.sourceforge.net/sourceforge/jtds/$pkgname-$pkgver-dist.zip)
md5sums=('946074e08d6da0f3f18dc5ca09543d2f')
arch=('i686' 'x86_64')
build() {
  mkdir -p $startdir/pkg/usr/share/java
  cd $startdir/src/
  cp $pkgname-$pkgver.jar $startdir/pkg/usr/share/java
}
