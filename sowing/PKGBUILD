# Contributor: Jed Brown <jed@59A2.org>
pkgname=sowing
pkgver=1.1.16d
pkgrel=1
pkgdesc="Tools for documenting and improving portability"
arch=(x86_64 i686)
url="http://www.cs.uiuc.edu/~wgropp/projects/software/sowing"
license=('GPL')
groups=()
depends=()
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=(http://ftp.mcs.anl.gov/pub/petsc/externalpackages/$pkgname-$pkgver.tar.gz)
md5sums=('d0f4627d7896bb9200c47558ed37727b')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  mkdir -p "${srcdir}/build"
  cd "${srcdir}/build"

  ../${pkgname}-${pkgver}/configure --prefix=/usr --datadir=/usr/share/sowing
  make || return 1
  make prefix="${pkgdir}/usr" datadir="${pkgdir}/usr/share/sowing" install || return 1
}
