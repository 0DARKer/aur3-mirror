# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=scplayer
pkgver=0.0.1
pkgrel=1
pkgdesc='GUI front-end to p2p TV sopcast'
arch=('i686' 'x86_64')
url='http://code.google.com/p/scplayer/'
license=('GPL2')
depends=('gtk3' 'hicolor-icon-theme' 'sopcast' 'totem')
makedepends=('gettext')
options=('!makeflags')
[ "$CARCH" == "x86_64" ] && depends=('bin32-sopcast' 'gtk3' 'hicolor-icon-theme' 'totem')
source=("http://scplayer.googlecode.com/files/$pkgname-$pkgver.tar.gz" 'scplayer.desktop')
md5sums=('fd87a0d9d9b90c9d00553a752af42d81' '75e75becb6fb8d1b0107e78fb30f427a')

build() {
  cd $srcdir

  # Build
  make
  mkdir -p $pkgdir/usr/bin
  chmod a+x scplayer scplayer.$pkgver
  cp -d scplayer scplayer.$pkgver $pkgdir/usr/bin/
  mkdir -p $pkgdir/usr/share/applications
  cp -d scplayer.desktop $pkgdir/usr/share/applications
}
