# Maintainer: James Spencer <james.s.spencer@gmail.com>

pkgname=jmol
pkgver=14.0.10
pkgrel=1
pkgdesc="a Java 3D viewer for chemical structures"
arch=('i686' 'x86_64')
url="http://jmol.sourceforge.net"
license=('LGPL')
depends=('java-environment')
source=(http://downloads.sourceforge.net/project/jmol/Jmol/Version%2014.0/Version%2014.0.10/Jmol-14.0.10-binary.tar.gz)
sha1sums=('50a92e770e84afcbd1024870876e370551096b2a')

package() {

  mkdir -p $pkgdir/usr/lib/$pkgname
  mkdir -p $pkgdir/usr/bin
  install -D "$srcdir/$pkgname-$pkgver/"* "$pkgdir/usr/lib/$pkgname"
  ln -s "/usr/lib/$pkgname/$pkgname.sh" "$pkgdir/usr/bin/$pkgname"

}
