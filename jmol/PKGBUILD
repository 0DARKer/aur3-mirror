# Maintainer: James Spencer <james.s.spencer@gmail.com>

pkgname=jmol
pkgver=13.0.16
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64')
url="http://jmol.sourceforge.net"
license=('LGPL')
depends=('java-environment')
source=(http://downloads.sourceforge.net/project/jmol/Jmol/Version%2013.0/Version%2013.0.16/Jmol-13.0.16-binary.tar.gz)
sha1sums=('be7d3776f2bd22555078a9f9800ebda8a033568f')

package() {

  mkdir -p $pkgdir/usr/lib/$pkgname
  mkdir -p $pkgdir/usr/bin
  install -D "$srcdir/$pkgname-$pkgver/"* "$pkgdir/usr/lib/$pkgname"
  ln -s "/usr/lib/$pkgname/$pkgname.sh" "$pkgdir/usr/bin/$pkgname"

}
