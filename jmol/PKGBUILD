# Maintainer: James Spencer <james.s.spencer@gmail.com>

pkgname=jmol
pkgver=13.0.6
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64')
url="http://jmol.sourceforge.net"
license=('LGPL')
depends=('java-environment')
source=(http://sourceforge.net/projects/jmol/files/Jmol/Version%2013.0/Version%2013.0.6/Jmol-13.0.6-binary.tar.gz)
sha1sums=('688814b59beba78672392db4ec2180e2fe6f7051')

package() {

  mkdir -p $pkgdir/usr/lib/$pkgname
  mkdir -p $pkgdir/usr/bin
  install -D $srcdir/$pkgname-$pkgver/* "$pkgdir/usr/lib/$pkgname"
  ln -s "/usr/lib/$pkgname/$pkgname.sh" "$pkgdir/usr/bin/$pkgname"

}
