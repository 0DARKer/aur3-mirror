# Maintainer: grimi <grimi at poczta dot fm>

_pkgname=fs-uae-launcher
pkgname=fs-uae-launcher-devel
pkgver=2.1.29dev
pkgrel=1
pkgdesc="FS-UAE Launcher is a graphical user interface for setting up FS-UAE (development version)."
arch=("any")
url="http://fengestad.no/fs-uae/download-devel"
license=("GPL2")
depends=("fs-uae" "xdg-utils" "wxpython" "python2-pygame" "python2-distribute" "python2-lhafile" "hicolor-icon-theme")
install="${pkgname}.install"
source=("http://fengestad.no/fs-uae/devel/${pkgver}/${_pkgname}-${pkgver}.tar.gz")
provides=("fs-uae-launcher")
conflicts=("fs-uae-launcher")
md5sums=('d5ccaab8b64c0e5f23733bf341a6d20e')




build() {
   cd ${_pkgname}-${pkgver}

   make -f Makefile.mk
}



package() {
   cd ${_pkgname}-${pkgver}
   python2 setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1
   make install -f Makefile.mk DESTDIR="${pkgdir}"
}


