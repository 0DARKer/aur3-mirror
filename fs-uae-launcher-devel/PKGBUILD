# Maintainer: grimi <grimi at poczta dot fm>

_pkgname=fs-uae
pkgname=fs-uae-launcher-devel
pkgver=1.3.17
pkgrel=1
pkgdesc="FS-UAE Launcher is a graphical user interface for setting up FS-UAE (development version)."
arch=("any")
url="http://fengestad.no/wp/fs-uae/download-beta"
license=("GPL2")
depends=("fs-uae" "xdg-utils" "wxpython" "python-pygame" "python2-distribute")
install="${pkgname}.install"
source=("http://fengestad.no/${_pkgname}/files/${pkgver}/${_pkgname}-${pkgver}.tar.gz")
provides=("fs-uae-launcher")
conflicts=("fs-uae-launcher")
md5sums=('b02c8b96e95ffc94f39768a1daeadfa2')




build() {
   cd ${_pkgname}-${pkgver}/launcher
   sed "s|\(.png'\)|\1,'zipped_save_disk'|" -i setup.py
   sed '/("\.adf")/a\            self.extensions.append(".adz")' -i \
      fs_uae_launcher/FileScanner.py
   make -f Makefile.mk
}



package() {
   cd ${_pkgname}-${pkgver}/launcher
   python2 setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1
   make install -f Makefile.mk DESTDIR="${pkgdir}"
}


