# Contributor: Ray Kohler <ataraxia937 at gmail dot com>
# Category: games

pkgname=xkobo
pkgver=1.11
pkgrel=4
pkgdesc="The original xkobo"
url='http://happypenguin.org/show?XKobo'
license=("GPL")
arch=('i686' 'x86_64')
depends=('libxext')
makedepends=('imake')
source=("http://www.ibiblio.org/pub/X11/contrib/games/${pkgname}-${pkgver}.tar.gz"
        modernize.patch)
md5sums=('b350678e49ad1a319a73d3e23ba5ec06'
         '6fc1f39c7247142575c02143ca4bdb9f')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p1 < ../modernize.patch
  xmkmf -a
  make || return 1
  make DESTDIR=${pkgdir} install
  make DESTDIR=${pkgdir} install.man
  chmod 775 ${pkgdir}/var/games
}
