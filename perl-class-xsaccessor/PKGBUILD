# Generator  : CPANPLUS::Dist::Arch 0.16
pkgname='perl-class-xsaccessor'
pkgver='1.05'
pkgrel='1'
pkgdesc="Generate fast XS accessors without runtime compilation"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Class-XSAccessor'
source=('http://search.cpan.org/CPAN/authors/id/S/SM/SMUELLER/Class-XSAccessor-1.05.tar.gz')
md5sums=('e2df66a3dc04f3b0b0b35dedcd702818')

build() {
  _DISTDIR="${srcdir}/Class-XSAccessor-1.05"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
