# Maintainer: Brieuc Roblin <brieuc dot roblin at gmail dot com>

pkgname=ucpufreq
pkgver=1.0.0.rc2
pkgrel=1
pkgdesc="Daemon providing a DBus service for accessing Cpufreq"
url="http://www.pyrotools.org/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('qt' 'dbus-core' 'cpufrequtils')
makedepends=('make')
optdepends=()
provides=('ucpufreq')
source=("http://www.pyrotools.org/software/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('a5337cc5c93f3b5277f2330fdde04c40')

build() {
  cd $srcdir/$pkgname-$pkgver
  qmake "INSTALL_PREFIX=/usr" "DBUS_PREFIX=/"
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make "INSTALL_ROOT=$pkgdir" install
}
