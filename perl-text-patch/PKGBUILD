# CPAN Name  : Text-Patch
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-text-patch'
pkgver='1.4'
pkgrel='2'
pkgdesc="Patches text with given patch"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Text-Patch'
source=('http://search.cpan.org/CPAN/authors/id/C/CA/CADE/Text-Patch-1.4.tar.gz')
md5sums=('df9d160e5f32bfbcc240edccc4e46a88')

build() {
  DIST_DIR="${srcdir}/Text-Patch-1.4"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&make test &&
    make DESTDIR="$pkgdir" install;  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
