# Maintainer: Scott Garrett <wintervenom@gmail.com>

pkgname=mpd-subtitles
pkgver=0.1a
pkgrel=1
pkgdesc="Displays synchronized lyrics to your music in MPD. Includes editor and uploader."
arch=('any')
url="http://wintervenom.brandonw.net/Projects/mpd-subtitles"
license=('WTFPL')
depends=('python2' 'python-mpd' 'pyosd' 'python-urwid' 'python-xlib')
source=(
    "http://wintervenom.brandonw.net/Projects/${pkgname}/mpd-subtitles.tar.bz2"
    "http://wintervenom.brandonw.net/Projects/${pkgname}/mpd-lrceditor.tar.bz2"
    "http://wintervenom.brandonw.net/Projects/${pkgname}/mpd-lrcupload.tar.bz2"
    "http://wintervenom.brandonw.net/Projects/py-modules/iomisc.tar.bz2"
    "http://wintervenom.brandonw.net/Projects/py-modules/lrcutils.tar.bz2"
    "http://wintervenom.brandonw.net/Projects/py-modules/osdsubs.tar.bz2"
    "http://wintervenom.brandonw.net/Projects/py-modules/mpdmisc.tar.bz2"
)

md5sums=('af8686c7c6f09c8383050062e9a261e4'
         '4b0dfba754e42b730235403726f27bc1'
         '71f55ff80973ee8c4cb1e499485c7e37'
         '640f23a081a9f90c301f5a9dd5fce807'
         '23a5de2c27bb691c765ab05f3ddb8a8d'
         '5586602b48d9c3354edd7895e3e83f2f'
         'e029041806fc64fd48be02e148318ddf')

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}"/{'usr/lib/python2.7/site-packages',bin}
  install -m644 *.py "${pkgdir}/usr/lib/python2.7/site-packages"
  for binary in mpd-{subtitles,lrceditor,lrcupload}; do
    install ${binary} "${pkgdir}/bin"
  done
}
