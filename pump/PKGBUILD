# Contributor: helios <helios@cyb0rg.org>

pkgname=pump
pkgver=0.8.24
pkgrel=4
arch=('i686' 'x86_64')
license=('GPL')
pkgdesc="BootP and DHCP client"
makedepends=('libnewt')
depends=('glibc')
source=(http://ftp.de.debian.org/debian/pool/main/p/pump/pump_${pkgver}.orig.tar.gz http://ftp.de.debian.org/debian/pool/main/p/pump/pump_${pkgver}-${pkgrel}.diff.gz)
md5sums=('866fc9f62b8161eb1514a6a06597edc9' 'aa9fb95cbd8abe24a9b69cbee67f0aed')
url="http://packages.debian.org/lenny/pump"

build() {
  sed -i -e "s|/usr/bin/install|/bin/install|g" $startdir/src/pump-$pkgver/po/Makefile
  sed -i -e 's|install -m 755 netconfig $(USRSBINPATH)/netconfig||g' $startdir/src/pump-$pkgver/Makefile

  cd $startdir/src/pump-$pkgver
  patch -Np1 -i ../pump_${pkgver}-${pkgrel}.diff
  make pump || return 1
  mkdir -p $startdir/pkg/sbin
  mkdir -p $startdir/pkg/usr/{man/man8,share/locale}
  RPM_BUILD_ROOT=$startdir/pkg sbindir=$startdir/pkg/usr/sbin libdir=$startdir/pkg/usr/lib includedir=$startdir/pkg/usr/include mandir=$startdir/pkg/usr/man datadir=$startdir/pkg/usr/share make install || return 1
}

# end of file #
