pkgname=pump
pkgver=0.8.24
pkgrel=4
arch=('i686' 'x86_64')
license=('GPL')
pkgdesc="BootP and DHCP client"
makedepends=('libnewt')
depends=('glibc')
source=(http://ftp.de.debian.org/debian/pool/main/p/pump/pump_${pkgver}.orig.tar.gz http://ftp.de.debian.org/debian/pool/main/p/pump/pump_${pkgver}-${pkgrel}.diff.gz)
md5sums=('866fc9f62b8161eb1514a6a06597edc9' 'aa9fb95cbd8abe24a9b69cbee67f0aed')
url="http://packages.debian.org/lenny/pump"

build() {
  sed -i -e "s|/usr/bin/install|/bin/install|g" $srcdir/pump-$pkgver/po/Makefile
  sed -i -e 's|install -m 755 netconfig $(USRSBINPATH)/netconfig||g' $srcdir/pump-$pkgver/Makefile

  cd $srcdir/pump-$pkgver
  patch -Np1 -i ../pump_${pkgver}-${pkgrel}.diff
  sed -i 's#-Wall -Werror ##g' $srcdir/pump-$pkgver/Makefile
  make pump
  mkdir -p $pkgdir/sbin
  mkdir -p $pkgdir/usr/{man/man8,share/locale}
  RPM_BUILD_ROOT=$pkgdir sbindir=$pkgdir/usr/sbin libdir=$pkgdir/usr/lib includedir=$pkgdir/usr/include mandir=$pkgdir/usr/man datadir=$pkgdir/usr/share make install
}

# end of file #
