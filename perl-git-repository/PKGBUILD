pkgdesc="Perl interface to Git repositories"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-system-command>=1.103' 'perl>=5.006')
makedepends=()
url='http://search.mcpan.org/dist/Git-Repository'
source=('http://search.mcpan.org/CPAN/authors/id/B/BO/BOOK/Git-Repository-1.312.tar.gz')
md5sums=('d259f626250464b29e367b42944c3c8c')
