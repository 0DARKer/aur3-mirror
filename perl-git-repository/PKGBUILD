pkgdesc="Perl interface to Git repositories"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-system-command>=1.100')
makedepends=()
url='http://search.cpan.org/dist/Git-Repository'
source=('http://search.cpan.org/CPAN/authors/id/B/BO/BOOK/Git-Repository-1.304.tar.gz')
