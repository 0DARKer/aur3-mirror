pkgdesc="Perl interface to Git repositories"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-system-command')
makedepends=()
url='http://search.cpan.org/dist/Git-Repository'
source=('http://search.cpan.org/CPAN/authors/id/B/BO/BOOK/Git-Repository-1.302.tar.gz')
md5sums=('7616e2a0017f88baefbf486c3cd3101f')
