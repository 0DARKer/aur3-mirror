# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-mame078-git
_gitname=mame2003-libretro
pkgver=2013.06.09_bd3c80c
pkgrel=1
pkgdesc="libretro implementation of MAME078. (Arcade)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/mame2003-libretro"
license=('custom')
makedepends=('git')
source=('git://github.com/libretro/mame2003-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
  make
}

package()
{
  mkdir -p $pkgdir/usr/lib/libretro
  install -v -m644 $srcdir/$_gitname/mame078_libretro.so $pkgdir/usr/lib/libretro/libretro-mame078.so
}