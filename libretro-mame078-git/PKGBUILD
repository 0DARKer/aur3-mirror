# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-mame078-git
pkgver=20130202
pkgrel=1
pkgdesc="libretro implementation of MAME078. (Arcade)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/mame078-libretro"
license=('custom')
makedepends=('git')

_gitroot="git://github.com/libretro/mame078-libretro.git"
_gitname="mame078-libretro"

build() 
{
   cd $srcdir

   msg "Cloning mame078-libretro from GIT"
   if [ -d $_gitname ]; then
      cd $_gitname
      git pull || return 1
   else
      git clone $_gitroot $_gitname || return 1
      cd $_gitname
   fi

   make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/mame078_libretro.so $pkgdir/usr/lib/libretro/libretro-mame078.so
}

