# Maintainer: flan_suse

# This suite contains the following:
#        * xfwm4 theme
#        * gtk2 theme
#        * gtk3 theme
#        * wallpaper

pkgname=xfce-theme-albatross
_pkgname=Albatross
pkgver=1.2
pkgrel=1_gtk3
pkgdesc="A dark, smooth Xfce theme, introduced in the release of Xubuntu 9.10"
arch=('any')
url="http://shimmerproject.org/projects/albatross/"
license=('GPL3' 'CCPL')
groups=('xfce-themes-shimmer-collection')
depends=('gtk-engine-murrine')
makedepends=('git')
optdepends=('elementary-icons-xfce: matching icon set, use dark icon theme'
            'gtk-engine-unico: required for gtk3 support')

package() {
    
    # Clone git repository
    git clone "git://github.com/shimmerproject/Albatross.git"

    # Change into source directory
    cd "$_pkgname"

    # Checkout current git-tag release
    # Comment out the next line if you wish to use the master branch instead; not recommended
    # The following checkout line is unique to this specific PKGBUILD
    # It is not a stable git-tag release, but it is a distinct commit with initial GTK3 support
    git checkout a4c586df5b64b539e246de7759a7c18e62bdf42b
    # DO NOT UNCOMMENT THE BELOW LINE FOR THIS SPECIFIC PKGBUILD
    # git checkout "v$pkgver"

    # Remove excess files and return to parent folder
    rm -f ".gitignore"
    rm -rf ".git"
    rm -rf "releases"
    rm -rf "shearwater"
    rm -rf "xsplash"
    rm -rf "usplash"
    cd ..

    # Create installation directories
    install -d -m755 "${pkgdir}/usr/share/themes/"
    install -d -m755 "${pkgdir}/usr/share/backgrounds/"
    install -d -m755 "${pkgdir}/usr/share/xfce4/backdrops/"

    # Copy the wallpaper to the correct directory, then remove the backdrops folder
    cp -f "$_pkgname/backdrops/albatross-2009-10.png" "${pkgdir}/usr/share/backgrounds/$_pkgname.png"
    rm -rf "$_pkgname/backdrops/"

    # Install the rest of the theme
    cp -rf "$_pkgname" "${pkgdir}/usr/share/themes/"

    # Make a symbolic link inside of the Xfce backdrops directory, for use with Desktop Settings
    cd "${pkgdir}/usr/share/xfce4/backdrops/"
    ln -s "../../backgrounds/$_pkgname.png" "$_pkgname.png"

}


