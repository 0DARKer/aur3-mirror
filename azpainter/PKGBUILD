# Maintainer: katoh <katoh_at_mikage.ne.jp>

pkgname=azpainter
pkgver=1.0.0
pkgrel=1
pkgdesc="Painting software"
arch=('i686' 'x86_64')
url="http://hp.vector.co.jp/authors/VA033749/"
license=('GPL3')
depends=('fontconfig' 'freetype2' 'libjpeg-turbo' 'libx11' 'libxext' 'libxft' 'libxi' 'zlib')
makedepends=('make')
source=("http://sourceforge.jp/frs/redir.php?m=osdn&f=%2Fazpainter%2F60112%2Fazpainter-1.0.0-src.tar.bz2")
md5sums=("4aecbfb732943e8b7e7de106325b5586")

build() {
    cd "$srcdir/$pkgname-$pkgver/"
    sed -i 's/\/local//' Makefile
    sed -i 's/axt/axt .\/README .\/NEWS/' Makefile 
    make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install
}
