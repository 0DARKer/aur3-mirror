# Maintainer: katoh <katoh_at_mikage.ne.jp>

pkgname=azpainter
pkgver=1.0.1
pkgrel=2
pkgdesc="Painting software"
arch=('i686' 'x86_64')
url="http://hp.vector.co.jp/authors/VA033749/"
license=('GPL3')
depends=('fontconfig' 'freetype2' 'libjpeg-turbo' 'libx11' 'libxext' 'libxft' 'libxi' 'zlib')
makedepends=('make')
source=("http://sourceforge.jp/frs/redir.php?m=iij&f=%2Fazpainter%2F60365%2Fazpainter-1.0.1-src.tar.bz2")
md5sums=("a279906957005290cec5ab74efe5ce8a")

build() {
	cd "$srcdir/$pkgname-$pkgver/"
	sed -i 's/\/local//' Makefile
	sed -i '2i ifdef DESTDIR\n\tprefix=$(DESTDIR)\/usr\nendif' Makefile
	sed -i 's/axt/axt .\/README .\/NEWS/' Makefile 
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
