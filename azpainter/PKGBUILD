# Maintainer: katoh <katoh_at_mikage.ne.jp>

pkgname=azpainter
pkgver=1.0.3
pkgrel=1
pkgdesc="Painting software"
arch=('i686' 'x86_64')
url="http://hp.vector.co.jp/authors/VA033749/"
license=('GPL3')
depends=('fontconfig' 'freetype2' 'libjpeg-turbo' 'libx11' 'libxext' 'libxft' 'libxi' 'zlib')
makedepends=('make')
source=("http://dl.sourceforge.jp/azpainter/61104/${pkgname}-${pkgver}-src.tar.bz2")
md5sums=("250298ad1ba9f89fdb11ae8a25da4f88")

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	sed -i 's/\/local//' Makefile
	sed -i '6i ifdef DESTDIR\n\tprefix=$(DESTDIR)\/usr\nendif' Makefile
	sed -i 's/axt/axt .\/README .\/NEWS/' Makefile 
	make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
