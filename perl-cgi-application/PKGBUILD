pkgname='perl-cgi-application'
pkgver='4.31'
pkgrel='1'
pkgdesc="Framework for building reusable web-apps"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.10.0' 'perl-html-template')
url='http://search.cpan.org/dist/CGI-Application'
source=('http://search.cpan.org/CPAN/authors/id/M/MA/MARKSTOS/CGI-Application-4.31.tar.gz')
md5sums=('502cb5785a291ed65869eb663eb01999')

build() {
  _DISTDIR="${srcdir}/CGI-Application-4.31"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Build.PL --installdirs=vendor --destdir="$pkgdir" &&
    ./Build &&
    ./Build test &&
    ./Build install;
  } || return 1;

  find "$pkgdir" -name .packlist -delete
  find "$pkgdir" -name perllocal.pod -delete
}
