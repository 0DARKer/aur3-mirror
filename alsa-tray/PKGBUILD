# vim: set ft=sh ts=4 sw=4 noet :

pkgname=alsa-tray
pkgver=0.5
pkgrel=1
pkgdesc="A systray icon and a command line interface for setting the volume of the ALSA Mixers."
arch=('any')
url="http://software.flogisoft.com/${pkgname}/en/"
license=('GPL3')
depends=('python2' 'alsa-lib' 'python-pyalsaaudio')
source=("http://download.flogisoft.com/files/Software/${pkgname}/${pkgname}_${pkgver}_src.tar.gz")
md5sums=('c308ec2069a16aa20823af4d878bcc7a')

build () {
  # changes the shebang line to force the use of /usr/bin/python2
  # instead of /usr/bin/python
  sed -i '1 s/$/2/' "${srcdir}/${pkgname}-${pkgver}/code/alsa_tray.py"
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./install.sh --package "${pkgdir}"
} 
