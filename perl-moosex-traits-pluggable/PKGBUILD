pkgname='perl-moosex-traits-pluggable'
pkgver='0.09'
pkgrel='1'
pkgdesc="trait loading and resolution for Moose"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-class-mop>=0.84' 'perl-list-moreutils' 'perl-moose' 'perl-namespace-autoclean' 'perl-test-exception')
url='http://search.cpan.org/dist/MooseX-Traits-Pluggable'
source=('http://search.cpan.org/CPAN/authors/id/R/RK/RKITOVER/MooseX-Traits-Pluggable-0.09.tar.gz')
md5sums=('1aa60064a2c57b44e4935b766262d3f7')

build() {
  _DISTDIR="${srcdir}/MooseX-Traits-Pluggable-0.09"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
