# Contributor: Alex Dioso <adioso->gmail*com>

pkgname=perl-readonly-xs
pkgver=1.05
pkgrel=1
pkgdesc="Companion module for Readonly.pm, to speed up read-only scalar variables."
arch=('i686' 'x86_64')
url="http://search.cpan.org/~ROODE/Readonly-XS"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10' 'perl-readonly')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/R/RO/ROODE/Readonly-XS-$pkgver.tar.gz)
md5sums=('df71f29abfcbd14c963f912d6d6ded6b')

build() {
  cd  $startdir/src/Readonly-XS-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
