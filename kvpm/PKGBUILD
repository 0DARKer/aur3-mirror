# Maintainer: Artem Sereda <overmind88@gmail.com>

pkgname=kvpm
pkgver=0.7.1
pkgrel=1
pkgdesc="Front end for Linux LVM and Gnu parted. It also handles creating and mounting file systems"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/kvpm/"
license=('GPL')
depends=('util-linux-ng' 'parted' 'kdelibs' 'lvm2>=2.02.73' 'udev')
makedepends=('cmake' 'automoc4')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('9cc6a88eff1a8f4813b3e85d214fcda7')

build () {
 unset LDFLAGS
 cd ${srcdir}/${pkgname}-${pkgver}/kvpm
 cmake -DCMAKE_INSTALL_PREFIX=/usr
 make || return 1
 make DESTDIR=${pkgdir} install
}
