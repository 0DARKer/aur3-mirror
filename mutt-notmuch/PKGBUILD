# Maintainer: Nicolas Estibals <Nicolas.Estibals@gmail.com>
pkgname=mutt-notmuch
pkgver=20110901
pkgrel=1
pkgdesc="Notmuch (of a) helper for Mutt"
url="http://upsilon.cc/~zack/blog/posts/2011/01/how_to_use_Notmuch_with_Mutt/"
arch=('any')
license=('GPL3')
depends=('perl' 'perl-mailtools' 'perl-mail-box' 'notmuch')
source=("${pkgname}::http://git.upsilon.cc/cgi-bin/gitweb.cgi?p=utils/mutt-notmuch.git;a=blob_plain;f=mutt-notmuch;hb=master")
md5sums=('b4a4e3e7b28954416ca091e0f5cb8a9a')


build() {
  cd "${srcdir}"
  /usr/bin/core_perl/pod2man "${pkgname}" | gzip > "${pkgname}.1.gz"
}

package() {
  cd "${srcdir}"
  install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 "${pkgname}.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}.1.gz"
}
