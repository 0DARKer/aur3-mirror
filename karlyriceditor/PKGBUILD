# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=karlyriceditor
pkgver=1.1
pkgrel=1
pkgdesc="A program which lets you edit and synchronize lyrics with karaoke songs in varions formats like LRC, LRCv2, Ultrastar, CD+G."
arch=(i686 x86_64)
url="http://www.karlyriceditor.com/"
license=('GPL')
depends=('phonon')
optdepends=('phonon-xine: xine backend'
            'phonon-gstreamer: gstreamere backend')
install="$pkgname.install"
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz"
        "$pkgname.desktop")
md5sums=('037bdeec71a9da87be54444d8893f485'
         '91d4f8eec987aa889ba53a1b5a001b80')

build() {
  cd "$srcdir/$pkgname-$pkgver"

#  ./configure --prefix=/usr
  qmake 
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm 755 bin/$pkgname "$pkgdir/usr/bin/$pkgname"

  # desktop and pixmap file
  install -Dm 644 ../$pkgname.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm 644 src/images/application_icon.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
}

# vim:set ts=2 sw=2 et:
