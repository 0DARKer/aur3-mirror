# Maintainer: Ng Oon-Ee <ngoonee.talk@gmail.com>
# Contributor: Thomas Burdick <thomas.burdick@gmail.com>
pkgname=tevent
pkgver=0.9.10
pkgrel=1
pkgdesc="Talloc based event loop"
arch=('i686' 'x86_64')
url="https://tevent.samba.org/"
source=(http://samba.org/ftp/tevent/$pkgname-$pkgver.tar.gz)
license=('GPLv3')
depends=('talloc')
conflicts=()
provides=()
md5sums=('a676f56386969a024b78ae1270a33869')
#md5sums=('edc29f20fb508b6b860d70f0f07ccd3f')

build() {
  sed -i -e "s|/usr/bin/env python$|/usr/bin/env python2|" \
    $(find ${srcdir}/${pkgname}-${pkgver} -name 'waf')
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
  make DESTDIR=${pkgdir}/ install
  rm -R ${pkgdir}/usr/share
}

