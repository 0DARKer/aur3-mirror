pkgname=pyfa
pkgver=0.9
pkgrel=2
pkgdesc="EVE Online Fitting Assistant"
arch=('i686' 'x86_64')
url="http://pyfa.sourceforge.net/"
license=('GPL')
depends=('pygtk' 'python2>=2.5')
source=(http://downloads.sourceforge.net/project/pyfa/$pkgver/pyfa-$pkgver-src.tar.gz pyfa.desktop pyfa-icon.png pyfa-start.sh)

build() {
  cd ${srcdir}/pyfa || return 1
  
  install -d ${pkgdir}/usr/bin || return 1
  install -d ${pkgdir}/usr/share/{applications,pixmaps,pyfa} || return 1
  
  cp -R ${srcdir}/pyfa/* ${pkgdir}/usr/share/pyfa || return 1
  
  install -m 644 ${srcdir}/pyfa.desktop ${pkgdir}/usr/share/applications/pyfa.desktop || return 1
  install -m 644 ${srcdir}/pyfa-icon.png ${pkgdir}/usr/share/pixmaps/pyfa.png || return 1
  install ${srcdir}/pyfa-start.sh ${pkgdir}/usr/bin/pyfa || return 1
}
md5sums=('63779fc6fba58c54284426d9c0a11dfd'
         '8da4a99bca7a86976e44c70c668c05af'
         '828fc4c47b6dc19518c239d984ae33a3'
         '20b168b1fd0a04e680dc9d35d246f088')
md5sums=('63779fc6fba58c54284426d9c0a11dfd'
         '8da4a99bca7a86976e44c70c668c05af'
         '828fc4c47b6dc19518c239d984ae33a3'
         'de63872603f589a84a76426148200629')
