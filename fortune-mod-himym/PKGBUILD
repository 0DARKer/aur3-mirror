# Contributor: Mike Redd <mredd -a.t- 0tue0.com>

pkgname=fortune-mod-himym
pkgver=0.3
pkgrel=2
pkgdesc="How I Met Your Mother fortune cookie file"
url="http://fortunemod.tehspork.com"
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('0a1e99d5ee7404c3fdba9eb2e1fa3ee4')

build() {
    mkdir $srcdir/$pkgname-$pkgver/
    xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
    mv -i $srcdir/himym $srcdir/$pkgname-$pkgver/
    strfile $srcdir/$pkgname-$pkgver/himym
    install -d $pkgdir/usr/share/fortune || return 1
    install -m 644 $srcdir/$pkgname-$pkgver/himym* $pkgdir/usr/share/fortune \
    || return 1
}

