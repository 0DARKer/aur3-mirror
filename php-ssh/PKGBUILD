pkgname=php-ssh
pkgver=0.11.2
pkgrel=1
pkgdesc="PHP-SSH2 is an ssh2 extension for the PHP programming language."
url="http://pecl.php.net/package/ssh2"
license="PHP"
arch=('i686' 'x86_64')
depends=('php' 'openssl' 'openssh' 'libssh2')
makedepends=('php')
install=php-ssh.install
source=(http://pecl.php.net/get/ssh2-$pkgver.tgz)
md5sums=('a8027c6ca1489efbcafcd1cbc5ceabb1')

build() {
  cd $srcdir/ssh2-$pkgver

  /usr/bin/phpize
  ./configure --prefix=/usr --with-ssh2

  make
  make install INSTALL_ROOT=$pkgdir/
}
