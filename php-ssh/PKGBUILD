pkgname=php-ssh
pkgver=0.11.0
pkgrel=2
pkgdesc="PHP-SSH2 is an ssh2 extension for the PHP programming language."
url="http://pecl.php.net/package/ssh2"
license="PHP"
arch=('i686' 'x86_64')
depends=('php' 'openssl' 'openssh' 'libssh2')
makedepends=('php')
install=php-ssh.install
source=(http://pecl.php.net/get/ssh2-$pkgver.tgz http://remi.fedorapeople.org/ssh2-php53.patch)
md5sums=('9f5dcd5b92299458389038f7318cbc46' 'e0b85930b1e62d93abb0788867349a77')

build() {
	cd $srcdir/ssh2-$pkgver || return 1
	msg PATCH-PHP-5.3
	patch -p0 < ../ssh2-php53.patch || return 1
	msg PHPIZE
	/usr/bin/phpize || return 1
	msg CONFIGURE
	./configure --prefix=/usr --with-ssh2 || return 1
	msg MAKE
	make || return 1
	msg INSTALL
	make install INSTALL_ROOT=$pkgdir/ || return 1
}
