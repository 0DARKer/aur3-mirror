# Contributor: Christian Hesse <mail@eworm.de>

pkgname=cryptsetup-svn
pkgver=655
pkgrel=1
pkgdesc="Userspace setup tool for transparent encryption of block devices using the Linux 2.6 cryptoapi - svn version with discard support"
arch=(i686 x86_64)
license=('GPL')
url="http://code.google.com/p/cryptsetup/"
groups=('base')
depends=('device-mapper>=2.02.85-2' 'libgcrypt' 'popt')
conflicts=('mkinitcpio<0.7' 'cryptsetup')
provides='cryptsetup'
options=('!libtool' '!emptydirs')
source=(encrypt_hook
	encrypt_hook_discard.patch
	encrypt_install)
_svnmod="${pkgname}"
_svntrunk="http://cryptsetup.googlecode.com/svn/trunk/"

build() {
  cd ${srcdir}

  msg "Connecting to SVN server...."

  if [ -d ${_svnmod}/.svn ]; then
	  (cd ${_svnmod} && svn up -r $pkgver)
  else
	  svn co ${_svntrunk} --config-dir ./ -r $pkgver ${_svnmod}
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  svn export ${_svnmod} ${_svnmod}-build
  cd ${_svnmod}-build

  cd $srcdir/$pkgname-build
  ./autogen.sh
  ./configure --prefix=/usr --disable-static --sbindir=/sbin --libdir=/lib
  make
}

package() {
  cd $srcdir/$pkgname-build
  make DESTDIR=$pkgdir install
  # install hook
  cp $srcdir/encrypt_hook .
  patch -Np0 < $srcdir/encrypt_hook_discard.patch
  install -D -m644 encrypt_hook $pkgdir/lib/initcpio/hooks/encrypt
  install -D -m644 $srcdir/encrypt_install $pkgdir/lib/initcpio/install/encrypt
  # Fix pkgconfig location
  install -d -m755 $pkgdir/usr/lib
  mv $pkgdir/lib/pkgconfig $pkgdir/usr/lib/
}
md5sums=('ad29313b679570d97bf1c375aec05eb3'
         '4a6ea1915fee78886ec60d34f1ee94b6'
         '611823be1d92aedeb119be41c8cf1914')
