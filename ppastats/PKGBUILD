# Maintainer: graysky <graysky AT archlinux DOT us>
pkgname=ppastats
pkgver=1.0
pkgrel=1
pkgdesc="Util to download PPA statistics from launchpad."
arch=(any)
url="https://bugs.launchpad.net/launchpad/+bug/139855/comments/66"
license=('GPL')
depends=('python2' 'launchpadlib>=1.10')
options=(!emptydirs)
source=(https://launchpadlibrarian.net/109657544/ppastats)
sha256sums=('719ba6f079b0eab1628d4438cbc769dabd5955497144b808f779603ce3dc3219')

package() {
	cd "$srcdir"
	sed -i 's/^#!\/usr\/bin\/python/#!\/usr\/bin\/python2/' $pkgname
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}
