# Maintainer: graysky <graysky AT archlinux DOT us>
pkgname=ppastats
pkgver=2.0
pkgrel=1
pkgdesc="Util to download PPA statistics from launchpad."
arch=(any)
url="https://gitorious.org/arand-scripts"
license=('GPL')
depends=('python2' 'launchpadlib>=1.10')
options=(!emptydirs)
source=("https://gitorious.org/arand-scripts/arand-scripts/blobs/raw/master/$pkgname")
sha256sums=('8f11e5c57fb69247ee622e7690ef6405312e3cf22cea36ec8ae905a44ab503bd')

package() {
	cd "$srcdir"
	sed -i 's/^#!\/usr\/bin\/python/#!\/usr\/bin\/python2/' $pkgname
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}
