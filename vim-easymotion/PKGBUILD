pkgname=vim-easymotion
pkgver=1.2
_scriptid=15344
pkgrel=1
pkgdesc="simpler and faster vim motions"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=3526"
license=('unknown')
depends=('vim-runtime')
makedepends=('unzip')
groups=('vim-plugins')
install=vimdoc.install
source=("Lokaltog-vim-easymotion-1.2-0-gdfb8079.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}")
md5sums=('488665477113f1aeb596ade868029ef6')

build() {
  install -Dm755 ${srcdir}/Lokaltog-vim-easymotion-bf557c7/plugin/EasyMotion.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/EasyMotion.vim || return 1
  mkdir -p ${pkgdir}/usr/share/vim-scripts/easymotion/
  install -Dm644 ${srcdir}/Lokaltog-vim-easymotion-bf557c7/{doc/easymotion.txt,README.md} ${pkgdir}/usr/share/vim-scripts/easymotion/
}

# vim:set ts=2 sw=2 et:
