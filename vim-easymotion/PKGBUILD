# Contributor: Andreas B. Wagner <AndreasBWagner@pointfree.net>
pkgname=vim-easymotion
pkgver=1.3
_scriptid=16838
_extver=g667a668
_extver2=14906c3
pkgrel=1
pkgdesc="simpler and faster vim motions"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=3526"
license=('unknown')
depends=('vim-runtime')
makedepends=('unzip')
groups=('vim-plugins')
install=vimdoc.install
source=("Lokaltog-vim-easymotion-1.3-0-${_extver}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}")
md5sums=('065c2cdef0408fa9b05a0de7cd04176a')

build() {
  install -Dm755 ${srcdir}/Lokaltog-vim-easymotion-${_extver2}/plugin/EasyMotion.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/EasyMotion.vim
  install -Dm755 ${srcdir}/Lokaltog-vim-easymotion-${_extver2}/autoload/EasyMotion.vim ${pkgdir}/usr/share/vim/vimfiles/autoload/EasyMotion.vim
  mkdir -p ${pkgdir}/usr/share/vim/vimfiles/doc
  install -Dm644 ${srcdir}/Lokaltog-vim-easymotion-${_extver2}/doc/easymotion.txt ${pkgdir}/usr/share/vim/vimfiles/doc
  #install -Dm644 ${srcdir}/Lokaltog-vim-easymotion-fc59411/{doc/easymotion.txt,README.md} ${pkgdir}/usr/share/vim/vimfiles/doc
}
# vim:set ts=2 sw=2 et:
