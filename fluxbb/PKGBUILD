# Maintainer: Patrick Palka <patrick@parcs.ath.cx>
# Development: http://closure.ath.cx/aur-dev

pkgname=fluxbb
pkgver=1.4.5
pkgrel=1
pkgdesc="a fast, light, user-friendly forum application"
arch=('any')
url="http://fluxbb.org/"
license=('GPL')
depends=('php')
source=("http://fluxbb.org/download/releases/$pkgver/$pkgname-$pkgver.tar.gz")

package() {
    cd "$pkgname-$pkgver"

    install -vd "$pkgdir/srv/http/$pkgname"
    cp -vR . "$pkgdir/srv/http/$pkgname"

    install -vDm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('ec143aba9a659b9ca93eed64438e46e1')
