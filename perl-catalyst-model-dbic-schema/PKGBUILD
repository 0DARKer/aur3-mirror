pkgname='perl-catalyst-model-dbic-schema'
pkgver='0.43'
pkgrel='1'
pkgdesc="DBIx::Class model for Catalyst"
arch=('any')
url='http://search.cpan.org/dist/Catalyst-Model-DBIC-Schema'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-carp-clan' 'perl-catalyst-devel>=1.0' 'perl-catalyst-runtime>=5.80005' 'perl-catalystx-component-traits>=0.14' 'perl-dbix-class>=0.08114' 'perl-list-moreutils' 'perl-moose>=0.90' 'perl-moosex-types' 'perl-namespace-autoclean' 'perl-namespace-clean' 'perl-test-exception' 'perl-tie-ixhash')


options=('!emptydirs')

