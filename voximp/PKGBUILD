# Contributor: Ben Duffield <jebavarde@gmail.com>
pkgname=voximp
pkgver=0.0.1
pkgrel=1
arch=("i686" "x86_64")
pkgdesc="Control your desktop with your voice"
url="http://voximp.googlecode.com"
license=("BSD")
depends=("gstreamer0.10-python" "gstreamer0.10-base-plugins" "python" "pygtk" "pocketsphinx" "xdotool")
install=voximp.install
source=("http://voximp.googlecode.com/files/$pkgname-$pkgver.tar.gz")
md5sums=()
build() {
	cd $startdir/pkg
	mkdir -p usr/bin
	cp $startdir/src/voximp.py usr/bin/voximp
	mkdir -p usr/share/voximp/sample_configs
	cp $startdir/src/sample_configs/* usr/share/voximp/sample_configs
}
