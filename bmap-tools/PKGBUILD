# Maintainer: Patrick McCarty <pnorcks at gmail dot com>

pkgname=bmap-tools
pkgver=2.4
_relcommit=ea9ae1c2c6
pkgrel=1
pkgdesc="Tools for Tizen that increase flashing speed for large raw images"
arch=(any)
url="http://git.infradead.org/users/dedekind/bmap-tools.git"
license=('GPL2')
depends=('python2')
makedepends=('git')
source=(git://git.infradead.org/users/dedekind/bmap-tools.git)
sha256sums=('SKIP')

pkgver() {
  cd bmap-tools/
  git checkout $_relcommit
  grep 'version =' setup.py | sed 's/^.*version.*=.*"\(.*\)".*$/\1/'
}

build() {
  cd bmap-tools/
  git checkout $_relcommit
  python2 setup.py build
}

package() {
  cd bmap-tools/
  python2 setup.py install --root=$pkgdir/ --optimize=1
  install -Dm644 docs/man1/bmaptool.1 "$pkgdir"/usr/share/man/man1/bmaptool.1
} 

# vim:set ts=2 sw=2 et:
