pkgname=plymouth-theme-arch-suse
pkgver=0.1
pkgrel=1
pkgdesc="ArchLinux rebranded version of OpenSUSE 12.2 plymouth theme"
url="http://www.opensuse.org/en/"
arch=('any')
license=('GPL')
depends=('plymouth')
options=('')

source=('plymouth-arch-suse.tar.gz' \
        'plymouth-arch-suse.install')

md5sums=('e36e3f111c16ecac468804be2fc4a56e'
	 'f007ad1a0ffde4b7d3dbadd051f4d300')

package() {
    mkdir -p $pkgdir/usr/share/plymouth/themes/openSUSE
    install -Dm644 * $pkgdir/usr/share/plymouth/themes/openSUSE
}

