pkgname=wifite
pkgver=1
pkgrel=1
pkgdesc="A tool to attack multiple WEP and WPA encrypted networks at the same time"
arch=(any)
url="http://code.google.com/p/wifite/"
license=('GPL')
depends=(python tk)
source=("http://$pkgname.googlecode.com/svn/trunk/$pkgname.py")
noextract=()
md5sums=('fde25184970452a5a48e2cebb31cefaa')

build() {
  cd "$srcdir"
  install -D -m755 ${pkgname}.py ${pkgdir}/usr/bin/${pkgname}
}
