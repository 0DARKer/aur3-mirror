pkgname='perl-email-valid'
pkgver='0.184'
pkgrel='1'
pkgdesc="Check validity of Internet email addresses"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.8.0' 'perl-mailtools')
url='http://search.cpan.org/dist/Email-Valid'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Email-Valid-0.184.tar.gz')
md5sums=('c664a6aa6a228d3de80153fbf14cd326')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Email-Valid-0.184"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  cd "$DIST_DIR"
  $PERL Makefile.PL
  make
  make test
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

