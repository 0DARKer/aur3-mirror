# Maintainer: Tobias Powalowski <tpowa@archlinux.org>

_pkgbasename=libgssglue
pkgname=lib32-${_pkgbasename}
pkgver=0.3
pkgrel=1
pkgdesc="Exports a gssapi interface which calls other random gssapi libraries (lib32)"
arch=('x86_64')
url="http://www.citi.umich.edu/projects/nfsv4/linux/"
license=('BSD')
depends=("${_pkgbasename}>=${pkgver}" 'lib32-glibc')
makedepends=('gcc-multilib')
options=('!libtool')
source=(http://www.citi.umich.edu/projects/nfsv4/linux/$_pkgbasename/$_pkgbasename-$pkgver.tar.gz)
md5sums=('48aaad11b7371ba3270faa322202c038')

build() {
  cd "$srcdir"/$_pkgbasename-$pkgver
  ./configure --prefix=/usr --libdir=/usr/lib32 CC="gcc -m32" CXX="g++ -m32"
  make
}

package() {
  cd "$srcdir"/$_pkgbasename-$pkgver
  make DESTDIR="$pkgdir/" install

  rm -rf "${pkgdir}"/usr/include
}
