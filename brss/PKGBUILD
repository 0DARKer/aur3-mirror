pkgname=brss
pkgver=0.8.4dev
pkgrel=1
pkgdesc="Offline RSS reader"
arch=(any)
url="http://sourceforge.net/projects/brss/"
license=('GPL')
depends=('python2' 'dbus-python' 'pygobject' 'python2-feedparser' 'python-pysqlite' 'gtk3' 'libwebkit3' 'libnotify')
makedepends=()
provides=('brss')
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=(http://sourceforge.net/projects/$pkgname/files/$pkgname-$pkgver.tar.gz/download)
md5sums=('8494f263cbb3e2ca483ff77869cd511f')
install=brss.install

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}
