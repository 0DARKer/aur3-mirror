pkgname=brss
pkgver=0.8.15
pkgrel=1
pkgdesc="Offline RSS reader"
arch=(any)
url="http://sourceforge.net/projects/brss/"
license=('GPL')
depends=('python2' 'dbus-python' 'pygobject' 'python2-feedparser' 'python-pysqlite' 
            'gtk3' 'libwebkit3' 'libnotify' 'glib2' 'gettext')
makedepends=()
provides=('brss')
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('2ac854625db6f61d27049eea1eac88c7')
install=brss.install

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
