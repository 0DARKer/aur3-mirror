pkgname=pyih-uploader
pkgver=0.1.5
pkgrel=1
pkgdesc="is small python2 program to upload images to imageshack."
arch=('any')
url="https://github.com/hotvic/pyih-uploader/"
license=('GPL3')
depends=('python2' 'curl')
source=("https://github.com/hotvic/pyih-uploader/archive/v0.1.5.1.tar.gz")
md5sums=('cb8621f7eb7f22d40acbcb6180a2a1d7')

package() {
	cd $srcdir/$pkgname-${pkgver}.1/

	chmod +x install.sh
	./install.sh --prefix=$pkgdir/usr install
}
