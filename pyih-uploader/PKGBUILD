pkgname=pyih-uploader
pkgver=0.1.0beta1
pkgrel=1
pkgdesc="is small python2 program to upload images to imageshack."
arch=('any')
url="https://github.com/hotvic/pyih-uploader/"
license=('GPL3')
depends=('python2' 'curl')
source=('https://github.com/hotvic/pyih-uploader/archive/v0.1.0beta1.tar.gz')
md5sums=('7de2092d8a9c120be30a6e2478f6d53d')

package() {
	cd $srcdir/$pkgname-$pkgver/

	install -d $pkgdir/usr/bin
	chmod +x install.sh
	./install.sh --prefix=$pkgdir/usr
}
