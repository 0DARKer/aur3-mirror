# Maintainer: aksr <aksr at t-com dot me>
pkgname=neatroff-git
pkgver=0.r242.efdb89b
pkgrel=3
epoch=
pkgdesc="Neatroff is an implementation of troff typesetting system in C programming language."
arch=('i686' 'x86_64')
url="http://repo.or.cz/w/neatroff.git"
#url="http://litcave.rudi.ir/"
license=('custom')
groups=()
depends=('neatroff_dat')
makedepends=('git')
optdepends=('groff: for fonts and macros' 'neatpost' 'mktrfn')
provides=('neatroff')
conflicts=('')
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=('SKIP')
sha1sums=('SKIP')

_gitroot=git://repo.or.cz/neatroff.git
_gitname=neatroff

pkgver() {
  cd "$srcdir/$_gitname"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

## FONTS directory 
FDIR=/usr/share/neatroff/font

## MACROS directory
MDIR=/usr/share/neatroff/tmac

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make all FDIR=$FDIR MDIR=$MDIR
}

package() {
  cd "$srcdir/$_gitname-build"

  #install -Dm755 roff   $pkgdir/usr/bin/roff
  install -Dm755 roff   $pkgdir/usr/bin/neatroff
  install -Dm644 README $pkgdir/usr/share/doc/$pkgname/README
}

# vim:set ts=2 sw=2 et:
