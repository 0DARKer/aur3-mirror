# Maintainer: aksr <aksr at t-com dot me>
pkgname=neatroff-git
pkgver=0.r370.f1e9b60
pkgrel=4
epoch=
pkgdesc="An implementation of troff typesetting system in C programming language."
arch=('i686' 'x86_64')
url="http://litcave.rudi.ir/"
license=('custom:BSD')
groups=()
depends=('neatroff_dat')
makedepends=('git')
optdepends=('neatpost' 'mktrfn')
checkdepends=()
provides=('neatroff')
conflicts=('neatroff')
replaces=()
backup=()
options=()
changelog=
install=
source=($pkgname::git://repo.or.cz/neatroff.git)
noextract=()
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')

## FONTS directory 
FDIR=/usr/share/neatroff/font

## MACROS directory
MDIR=/usr/share/neatroff/tmac

pkgver() {
  cd $srcdir/$pkgname
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  make all FDIR=$FDIR MDIR=$MDIR
}

package() {
  cd "$srcdir/$pkgname"
 #install -Dm755 roff   $pkgdir/usr/bin/roff
  install -Dm755 roff   $pkgdir/usr/bin/neatroff
  install -Dm644 README $pkgdir/usr/share/doc/$pkgname/README
}

