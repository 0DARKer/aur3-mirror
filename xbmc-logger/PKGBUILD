# Maintanier: graysky <graysky AT archlinux dot us>
pkgname=xbmc-logger
pkgver=1.1
pkgrel=1
pkgdesc='Keeps track of every video you watch on xbmc.'
arch=('any')
license=('MIT')
url="https://github.com/graysky2/xbmc-logger"
depends=('perl')
source=("http://repo-ck.com/source/$pkgname/$pkgname-$pkgver.tar.xz")
sha256sums=('a57e205fc669d069ce4edab390befe4821fa82d52a83f839a095e9d3b07c6c64')

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 MIT "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
