pkgname=gtk-engine-unico
pkgrel=3
pkgver=74
pkgdesc="New GTK+ 3.0 theming engine by Andrea Cimitan"
arch=('i686' 'x86_64')
url="https://launchpad.net/unico"
license=('GPL')
makedepends=("bzr" "gnome-common")
depends=("gtk3")
source=("gtk-3.0.11-versionfix.patch")
md5sums=('ed3882d16b09b39096ba39ea0a3d673d')

_bzrtrunk=lp:${pkgname#gtk-engine-}
_bzrmod=${_bzrtrunk#lp:}

build() {
  cd ${srcdir}
  
  if [ -d ${_bzrmod} ]; then
    cd ${_bzrmod} && bzr up
  else
    bzr co ${_bzrtrunk}
    cd ${_bzrmod}
  fi

  patch -Np1 -i ${srcdir}/gtk-3.0.11-versionfix.patch
  ./autogen.sh --prefix=/usr --disable-static
  make
}

package() {
  cd ${srcdir}/${_bzrmod}
  make DESTDIR=${pkgdir} install
}

# vim:set ts=2 sw=2 et:
