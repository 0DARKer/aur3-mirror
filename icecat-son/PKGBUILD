# Maintainer: Figue <ffigue@gmail.com>
# Based on icecat-i18n package

lang=son
pkgname=icecat-son
pkgver=4.0
pkgrel=2
pkgdesc="son language pack for IceCat"
arch=('any')
license=('MPL')
url="http://www.gnu.org/software/gnuzilla/"
depends=("icecat>=${pkgver}g1")
#_url=http://gnuzilla.gnu.org/download/langpacks/${pkgver}/GNU_IceCat-${pkgver}
_url=http://mirror.linuzeros.org/icecat/langpacks/${pkgver}/
source=(${_url}${lang}.xpi)

# Don't extract anything
noextract=(${source[@]##*/})

build() {
  cd "${srcdir}"
  install -D -m 644 ${lang}.xpi "${pkgdir}/usr/lib/icecat-4.0/extensions/langpack-${lang}@firefox.mozilla.org.xpi" || return 1
}

md5sums=('1d1e26806d46dc81fd97413212813c54')
