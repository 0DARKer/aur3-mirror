# Maintainer: Christoph Drexler <chrdr at gmx dot at>

pkgname=leptonica
_pkgname=leptonlib
pkgver=1.67
pkgrel=1
pkgdesc="Software that is broadly useful for image processing and image analysis applications"
arch=('i686' 'x86_64')
url="http://www.leptonica.com/"
license=('custom')
depends=()
source=(http://www.leptonica.com/source/${_pkgname}-${pkgver}.tar.gz)
md5sums=('23f03ad6a0cab67714df98110ad2e141')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}

  ./configure --prefix=/usr

  make
}

package() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -D ${srcdir}/${_pkgname}-${pkgver}/${pkgname}-license.txt ${pkgdir}/usr/share/licenses/${pkgname}/${pkgname}-license.txt
}
