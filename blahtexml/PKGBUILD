# Maintainer: Abhishek Dasgupta <abhidg@gmail.com>
pkgname=blahtexml
pkgver=0.6
pkgrel=2
pkgdesc="Converts TeX equations into MathML"
arch=(i686 x86_64)
url="http://gva.noekeon.org/blahtexml"
license=('GPL')
depends=(xerces-c-2)
source=(http://gva.noekeon.org/$pkgname/$pkgname-$pkgver-src.tar.gz
        makefile.patch)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 < ../makefile.patch || return 1

  make blahtexml-linux || return 1
  install -D -m755 blahtexml "${pkgdir}/usr/bin/blahtexml"
  echo "export LD_LIBRARY_PATH=\"$LD_LIBRARY_PATH:/opt/xerces-c-2/lib\"" > blahtexml.sh || return 1
  install -D -m755 blahtexml.sh "$pkgdir/etc/profile.d/blahtexml.sh"
}

# vim:set ts=2 sw=2 et:
md5sums=('89999112172b5370b821ed072f6fb179'
         '983c6cfd0be03d78067e6857d6f28c27')
