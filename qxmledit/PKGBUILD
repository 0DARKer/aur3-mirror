# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=(qxmledit)
pkgver=0.4.9.1
pkgrel=1
pkgdesc="A simple XML editor written in qt4"
arch=('i686' 'x86_64')
url="http://code.google.com/p/qxmledit/"
license=('GPL3')
depends=('qt')
source=(http://$pkgname.googlecode.com/files/QXmlEdit-$pkgver-sources.tgz)
md5sums=('b2feae9d3c4ba4f9bc3fa5a6e29fd543')

build() {

  cd "$srcdir/$pkgname-$pkgver/src"
  
  sed -i "s_/opt_/usr/share_" QXmlEdit.pro
  qmake
  make
}

package() {

  cd "$srcdir/$pkgname-$pkgver/src"

  make INSTALL_ROOT="$pkgdir/" install

  mkdir "$pkgdir/usr/bin"
  mv "$pkgdir/usr/share/$pkgname/QXmlEdit" "$pkgdir/usr/bin/$pkgname"
}
