# Maintainer: SmiL3y <xakepa10@gmail.com>

pkgname=conky-colors-git
pkgver=20120719
pkgrel=2
pkgdesc="An easier way to configure Conky"
arch=('i686' 'x86_64')
url="https://github.com/helmuthdu/conky_colors"
license=('GPL')
makedepends=('perl' 'git')
depends=('pystatgrab' 'ttf-liberation' 'hddtemp' 'curl' 'lm_sensors' 'conky' 'ttf-ubuntu-font-family')
optdepends=('conky-lua')
conflicts=('ttf-openlogos' 'ttf-weather' 'conky-colors')
replaces=('conky-colors')
options="!strip"
install="${pkgname}.install"
_gitroot="git://github.com/helmuthdu/conky_colors.git"
_gitname="conky-colors"
source=()

build() {
	cd "$srcdir"
	msg "Connecting to GIT server...."

	if [ -d "${_gitname}" ] ; then
		cd "${_gitname}"
		git pull origin master
		msg "The local files are updated."
	else
		git clone --depth=1 "${_gitroot}" "${_gitname}"
	fi
	msg "GIT checkout done or server timeout"
  
	msg "Starting make..."
	rm -rf "${srcdir}/${_gitname}-build"
	cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
	cd "${srcdir}/${_gitname}-build"
  make
}

package() {
	cd "${srcdir}/${_gitname}-build"
	make DESTDIR="${pkgdir}/" install
}
