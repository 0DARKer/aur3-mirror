# Contributor: Athemis <athemis@ish.de>
pkgname=spring-ba
pkgver=7.19
_pkgver=719
pkgrel=1
pkgdesc="A popular, highly balanced mod based on the late, immensely popular mod Absolute Annihilation. BA is designed for competitive 1v1 gameplay but is also perfectly suited for larger team games."
arch=(i686 x86_64)
url="http://springrts.com/wiki/Balanced_Annihilation"
license=('GPL' 'CCPL' 'custom:non-free')
depends=('spring' 'spring-ota')
source=('http://spring.vsync.de/5/BA719.sd7' 'license-non-free')
md5sums=('57bfed55773cacc9287b80c01fd52620'
         '28872feaac21fc4b2b4ae00b3f86e52a')

build() {
	mkdir -p $pkgdir/usr/share/spring/mods || return 1
	install -Dm 644 -t $pkgdir/usr/share/spring/mods $startdir/BA719.sd7 || return 1
	install -Dm 644 license-non-free ${pkgdir}/usr/share/licenses/${pkgname}/non-free || return 1
}

