# Custom properties used in PKGBUILD and auto-package creation.
_name="Balanced Annihilation"
_rooturl="http://www.springfiles.com/sites/default/files/downloads/spring/games/"
_prefix=ba-v
_version=7.76
_suffix=.sdz
_force_update=n
_category='games'
_include=('license-non-free')

_filename="$_prefix$_version$_suffix"
_license="${_include[0]}"

pkgname=spring-ba
pkgver=$_version
pkgrel=1
pkgdesc="A popular, highly balanced mod based on the late, immensely popular mod Absolute Annihilation. Balanced Annihilation is designed for competitive 1v1 gameplay but is also perfectly suited for larger team games."
arch=(any)
url="http://balancedannihilation.org/"
license=('GPL' 'CCPL' 'custom:non-free')
depends=('spring')
changelog='ChangeLog'
source=("$_rooturl/$_filename"
        "$_license")
noextract=("$_filename")
md5sums=('d4791dc1f8f62b70a9bacb82c2487457'
         '28872feaac21fc4b2b4ae00b3f86e52a')

package() {

	mkdir -p $pkgdir/usr/share/spring/mods || return 1

	install -TDm 644 $srcdir/$_filename $pkgdir/usr/share/spring/mods/$_filename || return 1
	install -Dm 644 $srcdir/$_license ${pkgdir}/usr/share/licenses/${pkgname}/non-free || return 1
}

