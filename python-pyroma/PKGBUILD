# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python-pyroma
_pyname=pyroma
pkgver=1.4
pkgrel=1
pkgdesc="Test your project's packaging friendliness"
arch=('any')
url='https://bitbucket.org/regebro/pyroma'
license=('MIT')
depends=('python' 'python-docutils')
makedepends=('python-distribute')
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/$(echo ${_pyname} | cut -c1)/${_pyname}/${_pyname}-${pkgver}.zip")
md5sums=('a9310b6cf3fab105f1e563782146133c')

package() {
  cd "${srcdir}/${_pyname}-${pkgver}"
  python3 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

