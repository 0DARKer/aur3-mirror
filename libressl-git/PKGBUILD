# Maintainer: Immae <ismael.bouya@normalesup.org>

pkgname=libressl-git
_gitname=libressl
# use a pacman compatible version scheme
pkgver=v0be363f3c1
pkgrel=1
pkgdesc='Fork of openssl by openbsd'
arch=('i686' 'x86_64')
url='https://github.com/busterb/libressl'
license=('custom:BSD')
optdepends=('ca-certificates')
source=("git://github.com/busterb/${_gitname}")
md5sums=('SKIP')


build() {
	cd $srcdir/$_gitname

	git submodule init
	git submodule update
	./autogen.sh
	./configure  --prefix=/usr

	make
}

package() {
	cd $srcdir/$_gitname
	make DESTDIR=$pkgdir install
	install -D -m644 COPYING $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

