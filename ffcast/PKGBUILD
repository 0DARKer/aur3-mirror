# Maintainer: lolilolicon <lolilolicon@gmail.com>

_name=FFcast
_ver=2.0.2
pkgname=ffcast
epoch=1
pkgver=${_ver//-/}
pkgrel=1
pkgdesc="FFcast has almost nothing to do with FFmpeg or screencast ;)"
arch=(i686 x86_64)
url="https://github.com/lolilolicon/FFcast"
license=(GPL3)
depends=('bash>=4.3' ffmpeg libx11 xorg-xdpyinfo xorg-xprop xorg-xwininfo)
makedepends=(perl)
source=("https://github.com/lolilolicon/$_name/archive/$_ver.tar.gz")
md5sums=('a38471755ae955a0532e26021e3dac55')

build() {
  cd "$_name-$_ver"
  make
}

package() {
  cd "$_name-$_ver"
  make PREFIX=/usr DESTDIR="$pkgdir" install
}

