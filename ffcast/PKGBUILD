# Maintainer: lolilolicon <lolilolicon@gmail.com>

pkgname=ffcast
epoch=1
pkgver=1.0b
pkgrel=1
pkgdesc="Takes screencast of one or more interactively selected screen region or window"
arch=(i686 x86_64)
url="https://github.com/lolilolicon/FFcast2"
license=(GPL3)
makedepends=(git)
depends=('bash>=4.2' ffmpeg libx11 xorg-xwininfo)
provides=(xrectsel)
conflicts=(xrectsel)
source=("https://github.com/downloads/lolilolicon/FFcast2/$pkgname-$pkgver.tar.gz")
md5sums=('1209ebae27f7abba086edc74cc595e5f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX=/usr DESTDIR="$pkgdir" install

  install -D -m644 README "$pkgdir/usr/share/doc/$pkgname"/README
}

# vim:st=2:tw=2:et:
