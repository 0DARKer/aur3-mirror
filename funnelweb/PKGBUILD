# Maintainer: aksr <aksr at t-com dot me>
# Contributor: Andrej Gelenberg <andrej.gelenberg@udo.edu>
pkgname=funnelweb
pkgver=3.2.0
pkgrel=1
epoch=
pkgdesc="FunnelWeb is a powerful literate-programming macro preprocessor."
arch=(any)
url="http://www.ross.net/funnelweb/"
license=('GPLv2')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://www.ross.net/funnelweb/download/funnelweb_v320/funnelweb_v320_source.tar.gz")
noextract=()
md5sums=('5846515b9d24c9b40a23da8afc857a2c')
sha256sums=('8f13cb6fd3f4d2563bb41bd13509550db14bd78a68da2a42cb4bbd2481f6107f')

build() {
  cd "$srcdir/fw_src/source"

  #gcc $CFLAGS $LDFLAGS -o fw *.c || return 1
  gcc -o fw *.c
}

package() {
  cd "$srcdir/fw_src/"

  mkdir -p $pkgdir/usr/{bin,share/funnelweb}

  install -D -m755 $srcdir/fw_src/source/fw         $pkgdir/usr/bin/fw
  ln -s            fw                               $pkgdir/usr/bin/funnelweb
  install -D -m644 $srcdir/fw_src/admin/0readme.txt $pkgdir/usr/share/funnelweb/0readme.txt
}
