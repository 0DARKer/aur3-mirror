# Contributor: uastasi <uastasi@archlinux.us>
pkgname=frogr
pkgver=0.3
pkgrel=1
pkgdesc="a flickr remote organizer for GNOME"
arch=('i686' 'x86_64')
url="http://code.google.com/p/frogr/"
license=('GPL')
depends=('flickcurl' 'gtk2' 'cairo' 'boost')
makedepends=('intltool')
options=()
source=(http://frogr.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('a4cc26c43d800c2f84ff0ee9d92705a0')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure --prefix=/usr 
    make || return 1
    make DESTDIR="${pkgdir}" install || return 1
}
