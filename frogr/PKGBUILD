# Contributor: uastasi <uastasi@archlinux.us>
pkgname=frogr
pkgver=0.4
pkgrel=1
pkgdesc="a flickr remote organizer for GNOME"
arch=('i686' 'x86_64')
url="http://live.gnome.org/Frogr"
license=('GPL')
depends=('flickcurl' 'gtk2' 'cairo' 'boost')
makedepends=('intltool')
options=()
source=(http://people.gnome.org/~msanchez/files/frogr/source/$pkgname-$pkgver.tar.gz)
md5sums=('672a3476d5bae2d1521afeb7acc010f1')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure --prefix=/usr 
    make || return 1
    make DESTDIR="${pkgdir}" install || return 1
}
