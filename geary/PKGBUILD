# Maintainer : sebikul <sebikul@gmail.com>

pkgname=geary
pkgver=0.1.0
pkgrel=2
pkgdesc="A new lightweight, easy-to-use, feature-rich email client"
arch=(i686 x86_64)
url="http://redmine.yorba.org/projects/geary"
license=('GPL')
depends=('sqlheavy' 'gmime' 'libunique3' 'libwebkit3' 'libgnome-keyring' 'libgee' 'dconf' 'hicolor-icon-theme' 'desktop-file-utils')
makedepends=('vala')
install=geary.install
conflicts=('geary-git')

source=(http://yorba.org/download/geary/stable/$pkgname-$pkgver.tar.xz)
md5sums=('e6c783a8c172a6f91580b79bad08d8c5')

build() {

	cd ${srcdir}/${pkgname}-${pkgver}
	
	./configure --prefix=/usr
	
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR="$pkgdir" install
	install -Dm644 icons/geary.png "$pkgdir/usr/share/pixmaps/geary.png"
}