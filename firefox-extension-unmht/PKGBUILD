_plugin_name=unmht
_plugin_version=7.3.0.3
pkgdesc="view MHT (MHTML) web archive format files, and save complete web pages, including text and graphics, into a single MHT file."
license=('MPL')

pkgname=firefox-extension-$_plugin_name
pkgver=$_plugin_version
pkgrel=1
arch=('any')
url="https://addons.mozilla.org/en-US/firefox/addon/unmht/"
depends=("firefox")
source=("https://addons.cdn.mozilla.net/user-media/addons/8051/unmht-7.3.0.3-sm+tb+fx+an.xpi")

package() {
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}
  install -d $dstdir
  rm *.xpi
  mv * $dstdir
}
sha256sums=('1ed0b2caf15bb151e127b94200dffa4e5e230df42fe6c489d36ddd84b8228a5e')
