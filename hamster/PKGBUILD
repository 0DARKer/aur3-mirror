# Maintainer: Michael P <ptchinster@archlinux.us>
pkgname=hamster
pkgver=2.0.0
pkgrel=9
pkgdesc="Tool for HTTP session sidejacking."
arch=('i686' 'x86_64')
url="http://hamster.erratasec.com/"
license=('GPL')
groups=()
depends=('libpcap')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://hamster.erratasec.com/downloads/${pkgname}-${pkgver}.tar.z)
noextract=()
md5sums=('dd933f20ca78e1665ca2175816b5ddff')

build() {
	mkdir -p ${pkgdir}/opt/hamster

	cd ${srcdir}/hamster/build/gcc4
	make
	cp ../../bin/* ${pkgdir}/opt/hamster

	cd ${srcdir}/ferret/build/gcc4
	make
	cp ../../bin/* ${pkgdir}/opt/hamster
}

