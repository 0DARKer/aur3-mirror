pkgname=koverartist
pkgver=0.7
pkgrel=1
pkgdesc="A program for the fast creation of covers for CD/DVD cases and boxes."
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=38195"
license="GPL"
depends=('kdelibs')
source=(http://kde-apps.org/CONTENT/content-files/38195-$pkgname-$pkgver.tar.bz2)
md5sums=('a6a8849eb298d9411e63f6959ea5510c')

build() {
  cd ${srcdir}
  rm -rf ${srcdir}/build
  mkdir -p ${srcdir}/build
  cd ${srcdir}/build || return 1

  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package(){
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
