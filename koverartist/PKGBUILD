#Contributor: Urs Wolfer <uwolfer @ fwo.ch>

pkgname=koverartist
pkgver=0.5
pkgrel=3
pkgdesc="KoverArtist is a program for the fast creation of covers for CD/DVD cases and boxes."
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=38195"
license="GPL"
depends=('kdelibs3')
source=(http://members.inode.at/499177/software/$pkgname/$pkgname-$pkgver.tar.bz2
	$pkgname-0.5-gcc43b.patch)

build() {
        cd $srcdir/$pkgname
	patch -Np1 -i ../$pkgname-0.5-gcc43b.patch
	
	source /etc/profile.d/kde3.sh
	source /etc/profile.d/qt3.sh

        ./configure 	--prefix=/opt/kde \
			--with-qt-dir=/opt/qt \
			--without-arts \
			--without-audio-cd
        make || return 1
        make DESTDIR=$pkgdir install
}
md5sums=('30abf0f9c743d144b7ae90d832fd4729'
         '16924a176c43d2ac5cb4adb93b875ca5')
