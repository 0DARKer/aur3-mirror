pkgname=mate-polkit
pkgver=2011.12.16
pkgrel=1
pkgdesc="PolicyKit integration for the MATE desktop"
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/PolicyKit"
license=('LGPL')
depends=('polkit>=0.101' 'gtk2')
makedepends=('intltool' 'gobject-introspection')
options=('!emptydirs' '!libtool')
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('35ff4b5ab712bd4b8e8076d100effacff4764cbb03886f6d547a8e0bfcf236ba')

url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')

build() {
    cd "${srcdir}"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --libexecdir=/usr/lib/polkit-mate \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}"
    make DESTDIR="${pkgdir}" install || return 1
}
