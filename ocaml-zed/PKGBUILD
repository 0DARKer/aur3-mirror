# Maintainer: Taylor Venable <taylor@metasyntax.net>

srcname='zed'
pkgname="ocaml-${srcname}"
pkgver=1.0
pkgrel=1
pkgdesc='An abstract engine for text editing'
arch=('i686' 'x86_64')
url='http://forge.ocamlcore.org/projects/zed/'
license=('BSD')
depends=('ocaml>=3.11.0')
makedepends=('ocaml-findlib' 'ocaml-react' 'ocaml-camomile')
source=('http://forge.ocamlcore.org/frs/download.php/662/zed-1.0.tar.gz')
options=('!strip')
md5sums=('b4c47ea64cc8eb7c1c7ec5f12870c13f')

build() {
    cd "$srcdir/${srcname}-${pkgver}"
    ./configure

    env DESTDIR="$pkgdir" \
        OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)" \
        make
}


package() {
    mkdir -p "$pkgdir/$(ocamlfind printconf destdir)"
    mkdir -p "$pkgdir/$(ocamlfind printconf destdir)/stublibs"
    cd "$srcdir/${srcname}-${pkgver}"
    env DESTDIR="$pkgdir" \
        OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)" \
        make install
    install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
