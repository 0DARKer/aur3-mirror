pkgname='perl-sys-info'
pkgver='0.73'
pkgrel='1'
pkgdesc="'Fetch information from the host system'"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-sys-info-base>=0.73' 'perl-sys-info-driver-linux>=0.73' 'perl-test-sys-info>=0.20')
url='http://search.cpan.org/dist/Sys-Info'
source=('http://search.cpan.org/CPAN/authors/id/B/BU/BURAK/Sys-Info-0.73.tar.gz')
md5sums=('fc043c3744f22048df202af185fc00dc')

build() {
  DIST_DIR="${srcdir}/Sys-Info-0.73"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
