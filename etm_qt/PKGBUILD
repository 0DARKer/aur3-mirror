# Maintainer:  trashstar <trash@ps3zone.org>

pkgname=etm_qt
pkgver=2.3.13
pkgrel=1
pkgdesc="Manage events and tasks using simple text files."
arch=('any')
url="http://people.duke.edu/~dgraham/etmqt/"
license=('GPL')
depends=('python2-pyqt4' 'python2-dateutil' 'python2-yaml' 'python2-icalendar')
makedepends=('setuptools')
source=("http://people.duke.edu/~dgraham/etmqt/etm_qt-$pkgver.tar.gz"
        'etmqt.patch')
md5sums=('b82fbbc0de6304607010786cae93b623'
         'd33ab05b6cd860806a9377e01d3d8515')

package() { 
    cd "$srcdir/$pkgname-$pkgver/etmQt"
    patch < "${srcdir}/etmqt.patch"

    cd "$srcdir/$pkgname-$pkgver"
    python2 setup.py install --prefix=/usr --root=$pkgdir 
}
