# Maintainer: garion < garion @ mailoo.org >

pkgname=mkvalidator
pkgver=0.3.3
pkgrel=1
pkgdesc="Validator for MKV files"
arch=('i686' 'x86_64')
url="http://www.matroska.org/downloads/$pkgname.html"
license=('BSD')
depends=('libebml' 'libmatroska')
source=(https://sourceforge.net/projects/matroska/files/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('f63cac5127e196e94ebdb0fe30ccf352')

  if [ $CARCH = "i686" ]; then
      _gcc_linux="gcc_linux"
  elif [ $CARCH = "x86_64" ]; then
      _gcc_linux="gcc_linux_x64"
  else
      return 1
  fi

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure || return 1
  make -C $pkgname || return 1
}

package(){
  cd $srcdir/$pkgname-$pkgver
  install -d $pkgdir/usr/bin/
  install -m 755 release/$_gcc_linux/$pkgname $pkgdir/usr/bin/
}
