# Maintainer: Gadget3000 <gadget3000@msn.com>
pkgname=flightgear-atlas-cvs
pkgver=02012011
pkgrel=1
pkgdesc="Displays high quality charts of the world for users of FlightGear"
arch=('x86_64' 'i686')
url="http://atlas.sourceforge.net/"
license=('GPL')
groups=()
depends=('flightgear' 'zlib' 'plib>=1.4' 'simgear' 'freeglut' 'libpng')
makedepends=('cvs')
provides=('flightgear-atlas')
conflicts=('flightgear-atlas')
replaces=()
backup=()
install=
source=()
noextract=()
md5sums=()

build() {
  cd $srcdir/
  msg "There is no password. Just press enter when prompted for one."
  cvs -d:pserver:anonymous@atlas.cvs.sourceforge.net:/cvsroot/atlas -f login
  cvs -z3 -d:pserver:anonymous@atlas.cvs.sourceforge.net:/cvsroot/atlas -f co Atlas
  cd $srcdir/Atlas
  ./autogen.sh
  ./configure --prefix=/usr
  make
  make DESTDIR="$pkgdir/" install
}
