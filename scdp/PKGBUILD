# Maintainer: Alfonso Saavedra "Son Link" <sonlink.dourden@gmail.com>
pkgname=scdp
pkgver=0.2.0
pkgrel=1
pkgdesc="Play audio CD from Systray"
arch=(any)
url="http://sonlinkblog.blogspot.com"
license=('GPL3')
groups=()
depends=('python2' 'pygtk' 'gstreamer0.10-python')
source=('http://dl.dropbox.com/u/58286032/programas/scdp-0.2.0.tar.gz')
md5sums=('c9d777721f480b951f75d25ec66e3c05')

package() {
  cd "${srcdir}"
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/locale
  mkdir -p $pkgdir/usr/share/applications
  
  install -m755 ${pkgname}.py $pkgdir/usr/bin/$pkgname
  sed -i "s/lang/\/usr\/share\/locale/g" $pkgdir/usr/bin/$pkgname
  sed -i "s|\(bin/python\).*|\12|" $pkgdir/usr/bin/$pkgname

  cp lang/* -r $pkgdir/usr/share/locale/
  
  install -Dm644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
	
}
