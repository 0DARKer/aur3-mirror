pkgname=android-sources-15
pkgver=4.0.3_r01
pkgrel=1
pkgdesc='Android SDK Sources, API-15'
arch=('any')
url="http://developer.android.com/sdk/index.html"
license=('custom')
repends=()
source=("http://dl-ssl.google.com/android/repository/sources-15_r01.zip")
sha1sums=('6f74aa988a8d948d833105982647615d88167df6')
options=(!strip)

package() {
  mkdir -p "${pkgdir}/opt/android-sdk/sources/"
  mv "${srcdir}/src" "${pkgdir}/opt/android-sdk/sources/android-15"

  chmod -R ugo+rX "${pkgdir}/opt"
}
