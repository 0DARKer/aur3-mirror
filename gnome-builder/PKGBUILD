# Maintainer: Mirco Tischler <mt-ml at gmx dot de>

pkgname=gnome-builder
pkgver=3.15.4.1
pkgrel=1
pkgdesc="An IDE for writing GNOME-based software"
arch=('i686' 'x86_64')
url="https://wiki.gnome.org/Apps/Builder"
license=(GPL)
depends=('gtksourceview3' 'devhelp' 'libgit2-glib')
makedepends=('intltool' 'gobject-introspection')
install=gnome-builder.install
source=("https://git.gnome.org/browse/gnome-builder/snapshot/GNOME_BUILDER_$(echo ${pkgver}|sed 's|\.|_|g').tar.xz")
sha256sums=('456f1a4e579bdb83377ba263698647dd1e03cf0d1ba7372ca303f905d9752bf5')

build() {
  cd "$srcdir/GNOME_BUILDER_$(echo ${pkgver}|sed 's|\.|_|g')"
  ./autogen.sh --prefix=/usr --disable-schemas-compile
  make
}

package() {
  cd "$srcdir/GNOME_BUILDER_$(echo ${pkgver}|sed 's|\.|_|g')"
  make DESTDIR="${pkgdir}" install
}
