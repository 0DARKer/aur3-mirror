# Maintainer: Alessio Sergi <asergi [at] archlinux [dot] us>

pkgname=gdk-pixbuf-xcf
pkgver=20100305
pkgrel=2
pkgdesc="GdkPixbuf loader for The Gimp (XCF) file format"
arch=('i686' 'x86_64')
url="http://gitorious.org/xcf-pixbuf-loader"
license=('LGPL')
depends=('bzip2' 'gdk-pixbuf2')
options=('!libtool')
install=${pkgname}.install
source=(http://db.tt/aRtfPvp)
md5sums=('cbfc069ab0cacb7d065b1dcaa5998624')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  ./autogen.sh && ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  install -Dm644 .libs/libioxcf.so \
        ${pkgdir}/usr/lib/gdk-pixbuf-2.0/2.10.0/loaders/libpixbufloader-xcf.so
}
