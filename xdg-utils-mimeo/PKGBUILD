# Maintainer: cantabile <cantabile dot desu at gmail dot com>

_appname=xdg-utils
_suffix=-mimeo
pkgname=${_appname}${_suffix}
pkgver=1.1.0rc1
pkgrel=2
pkgdesc='Command line tools that assist applications with a variety of desktop integration tasks. Patched to use mimeo if available.'
arch=('any')
url='http://portland.freedesktop.org/'
depends=('sh')
makedepends=('docbook-xsl' 'xmlto')
optdepends=('xorg-utils: needed if using Xfce')
provides=('xdg-utils')
conflicts=('xdg-utils')
license=('custom')
source=(
  #"ftp://ftp.archlinux.org/other/${pkgname}/${pkgname}-${pkgver}.tar.xz"
  http://portland.freedesktop.org/download/${_appname}-${pkgver/rc1/-rc1}.tar.gz
  mimeo.patch)

build() {
  #cd ${srcdir}/${pkgname}-${pkgver}
  cd "${srcdir}/${_appname}-${pkgver/rc1/-rc1}"
  ./configure --prefix=/usr --mandir=/usr/share/man
  make -C scripts
  make
  patch -Np1 -i "${srcdir}/mimeo.patch"
}

package() {
  #cd ${srcdir}/${pkgname}-${pkgver}
  cd "${srcdir}/${_appname}-${pkgver/rc1/-rc1}"
  make DESTDIR="${pkgdir}" install
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

md5sums=('fadf5e7a08e0526fc60dbe3e5b7ef8d6'
         '9afce5a8c199476187ebf58b03dc35ba')
