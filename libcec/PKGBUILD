# Maintainer: Philippe Cherel <philippe.cherel@mayenne.org>

pkgname=libcec
pkgver=1.3
pkgrel=1
pkgdesc="Pulse-Eight's libcec for the Pulse-Eight USB-CEC adapter"
arch=('i686' 'x86_64')
url="https://github.com/Pulse-Eight/libcec"
license=('GPL')
depends=('udev' 'glibc' 'gawk' 'autoconf' 'automake')
provides=('libcec')
source=(https://github.com/Pulse-Eight/libcec/tarball/libcec-1.3.0/Pulse-Eight-libcec-libcec-1.3.0-0-g32fe963.tar.gz)
md5sums=('65ec67cb1f45028e656d85a388985ac5')

build() {
  mv "$srcdir/Pulse-Eight-libcec-32fe963" "$srcdir/$pkgname-$pkgver"
  cd "$srcdir/$pkgname-$pkgver"
  autoreconf -vif
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
