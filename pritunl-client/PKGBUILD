# Maintainer: Zachary Huff <zach.huff.386@gmail.com>

pkgname=pritunl-client
pkgver=0.1.0
pkgrel=1
pkgdesc="Pritunl openvpn client"
arch=("any")
license=("AGPL3")
url="https://github.com/pritunl/${pkgname}"
depends=(
    "python2"
    "pygtk"
    "polkit"
    "net-tools"
    "iproute2"
    "openvpn"
)
makedepends=(
    "python2-distribute"
    "pygtk"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
install=${pkgname}.install
source=("${url}/archive/${pkgver}.tar.gz")
sha256sums=("0da9fb53e244a0342c5b3d377becade15bb3c368e872d9ff97b19a2ba54a9afc")
options=("emptydirs")

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/etc/pritunl_client"
    python2 setup.py install --root="${pkgdir}" --prefix=/usr
}
