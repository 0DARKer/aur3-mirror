# Maintainer: Pierre-Henri Quelen <pierrehenri.quelen@gmail.com>
pkgname=zygrib-maps
pkgver=2
pkgrel=4
pkgdesc="High resolution maps for zyGrib"
arch=('i686' 'x86_64')
url="http://www.zygrib.org/"
license=('GPL')
depends=('zygrib')
source=(zygrib_maps$pkgver.tgz::http://www.zygrib.org/getfile.php?file=zyGrib_maps$pkgver.tgz)
md5sums=('670e2e099f4d08076d2028da098ed77e')

build() {
   install -d -m 755 $pkgdir/opt/zygrib/maps/gshhs
   # README files already exist in package zygrib so we don't copy *
   install -m644 $srcdir/maps/gshhs/*.{rim,cat,cel,b} $pkgdir/opt/zygrib/maps/gshhs
}

