# Maintainer: Moritz Maxeiner <moritz@ucworks.org>

pkgname=dub
pkgver=0.9.11
pkgrel=2
pkgdesc="Package manager for D packages"
arch=('i686' 'x86_64')
url="https://github.com/rejectedsoftware/dub"
license=('MIT')
depends=('dmd' 'curl')
source=(${url}/archive/v${pkgver}.tar.gz)
conflicts=('dub-git')
md5sums=('e9f9dc9fd632048b17848d38300fd7d9')
sha256sums=('ed89a9274fada2f4c4c71fa004e1dcdf4db5f2fcd721f1376d00f3d7689d8d22')

build()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./build.sh
}

package()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -D -m755 dub "${pkgdir}/usr/bin/dub"
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}
