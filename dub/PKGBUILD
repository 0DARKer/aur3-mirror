# Maintainer: Moritz Maxeiner <moritz@ucworks.org>

pkgname=dub
pkgver=0.9.12
pkgrel=1
pkgdesc="Package manager for D packages"
arch=('i686' 'x86_64')
url="https://github.com/rejectedsoftware/dub"
license=('MIT')
depends=('dmd' 'curl')
source=(${url}/archive/v${pkgver}.tar.gz)
conflicts=('dub-git')
md5sums=('7d7419868288bf7236d8ce03adb96b7b')
sha256sums=('6387aef696b6d58f3474ee81e8e29958a85315917e810b7cf50c69c497859125')

build()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./build.sh
}

package()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -D -m755 bin/dub "${pkgdir}/usr/bin/dub"
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}
