pkgname=python-flack
pkgver=0.6.1
pkgrel=1
pkgdesc="Flask is a microframework for Python based on Werkzeug, Jinja 2 and good intentions."
arch=(any)
url="http://flask.pocoo.org/"
license=('BSD')
depends=('python2>=2.4')
makedepends=('setuptools')
source=(http://pypi.python.org/packages/source/F/Flask/Flask-${pkgver}.tar.gz)
md5sums=('7af56e33fb6a35db2818c20e604c8698')

build() {
  cd Flask-$pkgver
  python2 ./setup.py install --root=$pkgdir --prefix=/usr || return 1

  #cd docs
  #make html
  #mkdir ${pkgdir}/usr/share/doc/ -p
  #mv _build/html ${pkgdir}/usr/share/doc/${pkgname}
}


