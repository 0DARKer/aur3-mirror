# Maintainer: Maximilian Stein <theoddbird@posteo.org>
pkgname=matio
pkgver=1.5.2
pkgrel=1
pkgdesc="C library for reading and writing Matlab MAT files"
arch=('i686' 'x86_64')
url="http://matio.sourceforge.net//"
license=('BSD')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.zip")
md5sums=('01196b997ac410d1719df2cf50e5b8d6')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
}
package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR=$pkgdir install
}