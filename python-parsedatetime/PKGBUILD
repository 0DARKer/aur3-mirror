pkgname=python-parsedatetime
_pkgname=parsedatetime
pkgver=1.3
pkgrel=1
pkgdesc="Parse human-readable date/time text"
arch=('any')
url='http://github.com/bear/parsedatetime'
license=(Apache)
depends=('python')
makedepends=('python2-setuptools')
source=("${_pkgname}-$pkgver::git+https://github.com/bear/parsedatetime#commit=9a416d7ee4dd7e20d0cf471ad39bede3574b2449")
sha256sums=('SKIP')

package() {
  cd "${_pkgname}-$pkgver"
  python setup.py install --root="$pkgdir"
}

check () {
  cd "${_pkgname}-$pkgver"
  python run_tests.py
}


