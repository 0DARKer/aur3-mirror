pkgname=python-parsedatetime
_pkgname=parsedatetime
pkgver=1.3
pkgrel=5
pkgdesc="Parse human-readable date/time text"
arch=('any')
url='http://github.com/bear/parsedatetime'
license=(Apache)
depends=('python')
makedepends=('git')
source=("${_pkgname}-$pkgver::git+https://github.com/bear/parsedatetime#tag=v$pkgver")
sha256sums=('SKIP')

package() {
  cd "${_pkgname}-$pkgver"
  python setup.py install --root="$pkgdir"
}

