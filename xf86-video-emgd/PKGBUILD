# Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=xf86-video-emgd
_modpackage=xorg-emgd
pkgver=1.8.0.2032
_pkgver=pvr1.5.15.3226
ubustring=0ubuntu1~ppa1
pkgrel=5
pkgdesc="Drivers for Poulsbo (psb) 3D acceleration"
url="http://edc.intel.com/Software/Downloads/EMGD/"
license=('custom')
arch=('i686')
depends=('libxv' 'libva' 'libxcb' 'talloc' 'dkms-emgd')
source=(https://launchpad.net/~gma500/+archive/emgd-fix/+files/${_modpackage}_${pkgver}+${_pkgver}-${ubustring}.tar.gz)
md5sums=('c1df6fc86b9100bcf6a217b0c6c79a36')

build() {
  cd ${srcdir}
}

package() {
  cd ${srcdir}/${_modpackage}-${pkgver}+${_pkgver}
  mkdir -p ${pkgdir}/usr/lib/
  mkdir -p ${pkgdir}/usr/lib/dri
  mkdir -p ${pkgdir}/usr/lib/xorg/modules/dri
  mkdir -p ${pkgdir}/usr/lib/xorg/modules/drivers
  mkdir -p ${pkgdir}/etc
  mkdir -p ${pkgdir}/usr/share/man/man4/
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}/

  cp -R lib/* ${pkgdir}/usr/lib/
  cp dri/emgd_drv_video.so ${pkgdir}/usr/lib/dri/emgd_drv_video.so
  cp dri/emgd_dri.so ${pkgdir}/usr/lib/xorg/modules/dri/emgd_dri.so
  cp drivers/emgd_drv.so ${pkgdir}/usr/lib/xorg/modules/drivers/emgd_drv.so
  cp etc/powervr.ini  ${pkgdir}/etc/powervrd.ini
  cp man/emgd.4.gz  ${pkgdir}/usr/share/man/man4/emgd.4.gz
  cp debian/copyright ${pkgdir}/usr/share/licenses/${pkgname}/copyright
}





