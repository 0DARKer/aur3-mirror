# Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=xf86-video-emgd
_modpackage=xorg-emgd
pkgver=1.6.1.1952
_pkgver=1.6.1-1952
ubustring=0ubuntu1~ppa9
pkgrel=1
pkgdesc="Drivers for Poulsbo (psb) 3D acceleration"
url="http://edc.intel.com/Software/Downloads/EMGD/"
license=('custom')
arch=('i686')
depends=('xorg-server=1.9.4.901' 'libxv' 'libva' 'libxcb' 'talloc')
source=(https://launchpad.net/~gma500/+archive/emgd/+files/${_modpackage}_${_pkgver}-${ubustring}.tar.gz)
md5sums=('94c7e0bf8ff2a5bbb4c9048e37f3e248')

build() {
  cd ${srcdir}
}

package() {
  cd ${srcdir}/${_modpackage}
  install -d ${pkgdir}/usr/lib/
  install -m755 lib/* ${pkgdir}/usr/lib/
  install -Dm755 dri/emgd_drv_video.so ${pkgdir}/usr/lib/dri/emgd_drv_video.so
  install -Dm755 dri/emgd_dri.so ${pkgdir}/usr/lib/xorg/modules/dri/dri/emgd_dri.so
  install -Dm755 drivers/emgd_drv.so ${pkgdir}/usr/lib/xorg/modules/drivers/emgd_drv.so
  install -Dm755 etc/powervr.ini  ${pkgdir}/etc/powervrd.ini
  install -Dm755 man/emgd.4.gz  ${pkgdir}/usr/share/man/man4/emgd.4.gz
  install -Dm755 debian/copyright ${pkgdir}/usr/share/licenses/$pkgname/copyright
}





