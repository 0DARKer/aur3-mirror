# Contributor: Uzsolt
 
pkgname=bgslibrary-git

pkgver=1.9.0
pkgrel=2
pkgdesc="framework to perform background subtraction (BGS)"
url="https://github.com/andrewssobral/bgslibrary"
arch=('any')
license=('GPLv3')
install=
depends=('opencv>=2.3.1')
optdepends=
conflicts=
provides=
makedepends=('git' 'cmake>=2.8')
source=("$pkgname"::'git+https://github.com/andrewssobral/bgslibrary.git' 'bgslibrary.patch')
md5sums=('SKIP'
         '63707aada20732ce99dcc708d246f43f')

pkgver() {
    cd "$srcdir/$pkgname"
    git describe --long --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}
 
package() {
    cd "$srcdir/$pkgname"
    make install DESTDIR="${pkgdir}" || return 1
}

build() {
    cd "$srcdir/$pkgname"
    git am < "$srcdir/bgslibrary.patch"

    cmake -DCMAKE_INSTALL_PREFIX="/usr" .
    make
}
