# Generator  : CPANPLUS::Dist::Arch 1.06
pkgname='perl-xml-feed'
pkgver='0.43'
pkgrel='2'
pkgdesc="XML Syndication Feed Support"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-class-errorhandler' 'perl-datetime' 'perl-datetime-format-mail' 'perl-datetime-format-w3cdtf' 'perl-feed-find' 'perl-html-parser' 'perl-libwww' 'perl-uri-fetch' 'perl-xml-atom>=0.32' 'perl-xml-libxml>=1.66' 'perl-xml-rss>=1.44')
url='http://search.cpan.org/dist/XML-Feed'
source=('http://search.cpan.org/CPAN/authors/id/S/SI/SIMONW/XML-Feed-0.43.tar.gz')
md5sums=('5368f0e7d4f1fcbfa5c34606717115af')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/XML-Feed-0.43"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
