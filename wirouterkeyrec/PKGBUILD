# Maintainer: NGM <ngm270189 {at} gmail.com>
pkgname=wirouterkeyrec
pkgver=1.0.8
pkgrel=1
pkgdesc="A powerful and platform indipendent software to recover the 
default WPA passphrases of the supported router's models (Telecom Italia 
Alice 
AGPF, Fastweb Pirelli, Fastweb Tesley)."
arch=('i686' 'x86_64')
url="http://www.salvatorefresta.net/index.php/tools"
license=('GPL')
depends=()
makedepends=()
source=(http://tools.salvatorefresta.net/WiRouter_KeyRec_$pkgver.zip)
md5sums=('1c83a41add80c95812b5b6b9665fb3f8')

build() {
  cd "$srcdir/WiRouter_KeyRec_$pkgver"
  make
}

package() {
  cd "$srcdir/WiRouter_KeyRec_$pkgver"
	install -D -m 755 wirouterkeyrec $pkgdir/usr/bin/wirouterkeyrc
	install -D -m 644 config/agpf_config.lst 
$pkgdir/etc/wirouterkeyrec/agpf_config.lst
}

