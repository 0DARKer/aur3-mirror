# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Pierluigi Picciau <pierluigi.picciau@gmail.com>
pkgname=wirouterkeyrec
pkgver=1.0.1
pkgrel=1
pkgdesc="A powerful and platform indipendent software to recover the default WPA passphrases of the supported router's models (Telecom Italia Alice AGPF, Fastweb Pirelli, Fastweb Tesley)."
arch=('i686' 'x86_64')
url="http://www.salvatorefresta.net/index.php/tools"
license=('GPL')
depends=()
makedepends=()
source=(http://tools.salvatorefresta.net/WiRouter_KeyRec_$pkgver.zip)
md5sums=('ea82ec7491e00ced2d7de75f6ecb5c66')

build() {
  cd "$srcdir/WiRouter_KeyRec_$pkgver"
  make
}

package() {
  cd "$srcdir/WiRouter_KeyRec_$pkgver"
	install -D -m 755 wirouterkeyrec $pkgdir/usr/bin/wirouterkeyrc
	install -D -m 644 config/agpf_config.lst $pkgdir/etc/wirouterkeyrec/agpf_config.lst
}

# vim:set ts=2 sw=2 et:
