# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=ksuperkey
pkgver=0.1
pkgrel=1
pkgdesc="Allows you to open the application launcher in KDE Plasma Desktop using the Super key"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/ksuperkey?content=154569"
license=('GPL')
depends=('kdebase-workspace')
makedepends=()
source=("http://kde-apps.org/CONTENT/content-files/154569-$pkgname.tar.gz")
md5sums=('9e8ecdad8923881f0d0ebfdfc7393679')

build() {
  cd $pkgname
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}

