# Contributor: portix <portix at gmx.net>

pkgname=wikiex
pkgver=v1.1
pkgrel=1
pkgdesc="A simple script that will retrieve wiki source files for the given wiki pages." 
url="http://bitbucket.org/ambrevar/wikiex/"
arch=('i686' 'x86_64')
license=('MIT')
depends=('gawk' 'wget')
source=(https://bitbucket.org/ambrevar/"${pkgname}"/downloads/"${pkgname}"-"${pkgver}".tar.bz2)
sha1sums=('4d0e7037cca4f6a73bf8a81f2312f6dddbbf6d39')

package() {
    mkdir -p "${pkgdir}/usr/bin"
    cp "${srcdir}/${pkgname}-${pkgver}/wikiex" "${pkgdir}/usr/bin/"
}
