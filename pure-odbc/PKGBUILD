pkgname=pure-odbc
pkgver=0.5
pkgrel=1
pkgdesc="A Pure module to access to all ODBC-capable databases"
arch=("i686" "x86_64")
license=('GPL3')
url="http://code.google.com/p/pure-lang"
depends=('pure' 'libiodbc')
makedepends=('make' 'gcc' 'bison' 'flex')
source=("http://pure-lang.googlecode.com/files/$pkgname-$pkgver.tar.gz")
md5sums=('6f6f6676286af996029b75f71602c9ac')

build() {
	cd $startdir/src/$pkgname-$pkgver

	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}
