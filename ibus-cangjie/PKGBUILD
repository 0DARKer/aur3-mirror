# Maintainer: Antony Ho <ntonyworkshop@gmail.com>
pkgname=ibus-cangjie
pkgver=1.0
pkgrel=1
pkgdesc="This is an IBus engine for users of the Cangjie and Quick input methods."
arch=('x86_64' 'i686')
url="http://ibus-cangjie.opensource.hk/"
license=('GPL3')
depends=('ibus>=1.4.1' 'pycangjie' 'python>=3.2' 'python-gobject')
conflicts=()
makedepends=('intltool')
replaces=('ibus-cangjie-git')
sha1sums=('SKIP')
source=("http://$pkgname.opensource.hk/downloads/$pkgname/$pkgname-$pkgver.tar.xz")

check () {
  cd "$srcdir/$pkgname-$pkgver"
  make check
}

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
