pkgname=gnome-activity-journal
pkgver=0.6.0
pkgrel=1
pkgdesc="GUI to browse and search your Zeitgeist activities"
arch=('any')
url="https://launchpad.net/gnome-activity-journal"
license=('GPL3')
depends=('python2' 'pygtk' 'python-numpy' 'zeitgeist>=0.5.0' 'gnome-python' 
'python-gnomedesktop')
source=(http://launchpad.net/gnome-activity-journal/0.6/$pkgver/+download/gnome-activity-journal-$pkgver.tar.gz )
makedepends=('python-distutils-extra')
md5sums=('0a7597d0b81715972d3784cde0c751e9')

build() {
  cd $srcdir/$pkgname-$pkgver
  
  python2 setup.py build

  #cp -r data/zlogo $pkgdir/usr/share/gnome-activity-journal/data/   
} 

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --prefix=/usr --root=$pkgdir
}
