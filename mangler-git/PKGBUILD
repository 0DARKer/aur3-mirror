pkgname=mangler-git
pkgver=20120425
pkgrel=1
pkgdesc="A Ventrilo compatible VOIP client for Linux"
arch=('i686' 'x86_64')
url="https://github.com/haxar/mangler"
license=('unknown')
depends=('gtk2' 'gtkmm' 'dbus-glib' 'speex' 'gsm' 'pulseaudio')
makedepends=('git')

_gitroot="https://github.com/haxar/mangler.git"
_gitname="mangler-git"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [[ -d "${_gitname}" ]]; then
    cd "${_gitname}" && git pull origin
    msg "The local files are updated."
  else
    git clone "${_gitroot}" "${_gitname}"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"
  git checkout -q 14d174c001974307fe20aa9b46b4d12787b83752

  ./configure --prefix=/usr
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${_gitname}-build"
  make DESTDIR="${pkgdir}/" install
}

