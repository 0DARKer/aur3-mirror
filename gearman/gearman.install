post_install() {
  if [ -z "`getent group gearman`" ]; then
    groupadd -g 112 gearman
  fi
  if  [ -z "`getent passwd gearman`" ]; then
    useradd -u 112 -g gearman -c "Gearman" -d /dev/null -s /bin/false gearman
  fi
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  userdel gearman &> /dev/null
  groupdel gearman &> /dev/null
}

