# Maintainer: blackleg <hectorespertpardo@gmail.com>

pkgname=gplane-git
pkgver=fa48a48
pkgrel=1
pkgdesc='Gtk3 Flightgear launcker (Git version)'
arch=('i686' 'x86_64')
license=('GPL')
url='https://github.com/blackleg/gplane'
provides=('gplane')
conflicts=('gplane')
depends=("flightgear")
makedepends=('git')
source=("${pkgname}::git+https://github.com/blackleg/gplane.git")
md5sums=('SKIP')


pkgver () {
  cd "${srcdir}/${pkgname}"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "${srcdir}/${pkgname}"
  make
}

package() {
	cd "${srcdir}/${pkgname}"
	mkdir -p "${pkgdir}/usr/bin"
	mkdir -p "${pkgdir}/usr/share/gplane"
	make DESTDIR="${pkgdir}/" install
}
