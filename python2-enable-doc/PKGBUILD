# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-enable-doc
pkgver=3.4.0
_githubtag=ae6bac6
pkgrel=1
pkgdesc="Documentation for Enable"
arch=('any')
url="https://github.com/enthought/enable"
license=('BSD')
makedepends=('git' 'python2-distribute' 'python2-setupdocs')
conflicts=('python2-enable-doc-git' 'python-ets-enable-doc-svn')
options=(!emptydirs)

source=("https://github.com/enthought/enable/tarball/${pkgver}")
md5sums=('cd26b7bd3c4aa5f1a8b99b4a3e26c509')

build() {
  cd "$srcdir/enthought-enable-${_githubtag}"

  python2 setup.py build_docs || return 1
}

package() {
  cd "$srcdir/enthought-enable-${_githubtag}"

  install -d "${pkgdir}"/usr/share/doc/enthought/enable
  cp -r build/docs/html/* "${pkgdir}"/usr/share/doc/enthought/enable
}

