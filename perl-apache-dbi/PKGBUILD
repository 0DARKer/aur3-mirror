pkgname='perl-apache-dbi'
pkgver='1.11'
pkgrel='1'
pkgdesc="Initiate a persistent database connection"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-dbi>=1' 'perl-digest-sha1>=2.01')
makedepends=()
url='http://search.cpan.org/dist/Apache-DBI'
source=('http://search.cpan.org/CPAN/authors/id/P/PH/PHRED/Apache-DBI-1.11.tar.gz')
md5sums=('b973fdf5292bbe6caa38a664d0a83f0b')
sha512sums=('291f009f3189bc83232484da5dc7550b895eb6bf93223aff0bf4f610797c285c7e6c080c947c3efa3e5ac48143a54cd699fac0c6962e7e3d1cc84d40941d46dd')
_distdir="Apache-DBI-1.11"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

