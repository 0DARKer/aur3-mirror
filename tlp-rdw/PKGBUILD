# Maintainer: Matthias Gabriel <gabm at live dot de>
pkgname=tlp-rdw
pkgver=0.3.6
pkgrel=1
pkgdesc="TLP - Radio Device Wizard"
arch=('any')
url="https://github.com/linrunner/TLP/wiki/TLP-Linux-Advanced-Power-Management"
license=('GPL2')

depends=('networkmanager' 'tlp')
makedepends=('git')
optdepends=()
backup=()
source=()
conflicts=()
md5sums=()


build() {
  git clone git://github.com/linrunner/TLP.git
  cd TLP/

  git checkout $pkgver

  cd ..


}

package() {
  cd "$srcdir/TLP"

  #install it using the official makefile
  make DESTDIR="${pkgdir}" install-rdw  > /dev/null 2>&1

}
