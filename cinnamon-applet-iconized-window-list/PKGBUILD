# Maintainer: gareth_c 

pkgname=cinnamon-applet-iconized-window-list
pkgver=1.5
pkgrel=1
pkgdesc="Iconized Window List, an iconized window list with window previews and favorites."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/applets/view/16"
license=('GPL')
depends=('cinnamon' 'gtk3')
source=('http://cinnamon-spices.linuxmint.com/uploads/applets/M03N-UO5Q-85DD.zip')
md5sums=('3418a8778b35a0db3cca07c05c902105')
build() {
	cd ${srcdir}/WindowIconList@jake.phy@gmail.com/
	
	cinnamon_dir="$pkgdir/usr/share/cinnamon/applets/WindowIconList@jake.phy@gmail.com"

	mkdir -p $cinnamon_dir
	
	install -m0644 metadata.json applet.js thumbnailPreview.js rightClickMenu.js CREDITS $cinnamon_dir
}
