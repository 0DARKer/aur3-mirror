# Maintainer: JokerYu <dayushinn@gmail.com>
pkgname=redis-desktop-manager
pkgver=0.7.5
pkgrel=2
pkgdesc="Open source cross-platform Redis GUI based on Qt 5."
arch=("i686" "x86_64")
url="http://redisdesktop.com"
license=("MIT")
depends=("qt5-base" "libssh2")
md5sums=("9a6da8829d6936d4e4c038c02c3d1007")
source=("https://github.com/uglide/RedisDesktopManager/archive/0.7.5.tar.gz")
_pkgname=RedisDesktopManager

build() {
  msg "Building..."
  cd ${srcdir}/${_pkgname}-${pkgver}/${pkgname}
  chmod +x ./configure && ./configure && qmake redis-desktop-manager.pro && make
}

package() {
  msg "Copying files..."
  mkdir -p ${pkgdir}/usr/share/{applications,${pkgname}/bin}
  cd ${srcdir}/${_pkgname}-${pkgver}/${pkgname}
  install -Dm 644 rdm.desktop ${pkgdir}/usr/share/applications
  install -Dm 644 rdm.png ${pkgdir}/usr/share/${pkgname}/bin
  install -Dm 755 ../bin/linux/release/rdm ${pkgdir}/usr/share/${pkgname}/bin
}