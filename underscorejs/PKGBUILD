# Contributor:
pkgname=underscorejs
_script=underscore
pkgver=1.4.4
pkgrel=1
epoch=
pkgdesc="Underscore is a utility-belt library for JavaScript that provides a lot of the functional programming support that you would expect in Prototype.js (or Ruby), but without extending any of the built-in JavaScript objects."
arch=(any)
url=http://underscorejs.org
license=('MIT')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($url/$_script.js $url/$_script-min.js)
md5sums=('ba5c11e83668c43afaf12f0054736113'
         '6dc59d3a72ad547168cf823c2fddc728')
noextract=()

package() {
  cd $srcdir
  mkdir -p $pkgdir/usr/share/$pkgname
  install -m644 $_script-min.js $pkgdir/usr/share/$_script-min.js
  install -m644 $_script.js $pkgdir/usr/share/$_script.js
}

