#Maintainer: Brian Bidulock <bidulock@openss7.org>
pkgname=lxkb_config-git
pkgver=20130324
pkgrel=1
pkgdesc='A keyboard configuration application for LXDE'
arch=('i686' 'x86_64')
url="http://blog.lxde.org/?p=674"
license=('GPL')
groups=('lxde')
provides=('lxkb_config')
conflicts=('lxkb_config')
depends=('gtk2')
makedepends=('git' 'intltool')

_gitroot="git://lxde.git.sourceforge.net/gitroot/lxde/lxkb_config"
_gitname="lxkb_config"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d "$_gitname" ] ; then
    cd "$_gitname"
    git checkout -- configure.ac
    git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "${srcdir}/${_gitname}"
  
  autoreconf -fiv
  ./configure --prefix="/usr" --sysconfdir="/etc"
  make
}
package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR=${pkgdir} install
}
