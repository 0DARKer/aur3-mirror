# Maintainer: Antonio Rojas <nqn1976 @ gmail.com>

pkgname=kdeplasma-applets-akonadi-calendar
pkgver=0.1.3
pkgrel=1
pkgdesc="A plasmoid for displaying events from Akonadi resources"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/Akonadi+calendar+plasmoid?content=150034"
license=('GPL')
source=("http://kde-apps.org/CONTENT/content-files/150034-calendar-$pkgver.tar.bz2")
md5sums=('5465554c68c02d5401b66ac17e3c1e11')
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4' 'boost')
install=$pkgname.install

build() {
  cd calendar
  mkdir build 
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd calendar/build
  make DESTDIR=$pkgdir install
}