# Maintainer: flan_suse <windows2linux AT zoho DOT com>
pkgname=c2esp
pkgver=16
pkgrel=1
pkgdesc="CUPS printer driver for Kodak ESP printers"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/cupsdriverkodak/"
license=('GPL2')
source=("http://downloads.sourceforge.net/cupsdriverkodak/$pkgname$pkgver.tar.gz")
md5sums=('fe3f9d87cb40627f0546ea2ae36bd185')

build() {

    # Move into the source directory
    cd "$srcdir/$pkgname$pkgver/"

    # Compile the cups driver
    make
}

package() {

    # Move into the source directory
    cd "$srcdir/$pkgname$pkgver/"

    # Install the files
    make DESTDIR="${pkgdir}/" install

}

