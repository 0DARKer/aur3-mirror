pkgname=fpc32-allegro_pas
pkgver=4.4.3
pkgrel=2
pkgdesc="Allegro.pas is a wrapper to use Allegro with Pascal compilers (multilib)"
url="http://allegro-pas.sourceforge.net/"
license=('unknown')
arch=(x86_64)
depends=('fpc-multilib')
makedepends=('fpc-multilib')
optdepends=('allegro4: Allegro shared library')
source=("http://downloads.sourceforge.net/allegro-pas/allegro.pas-$pkgver-src-pas.tar.bz2")
md5sums=('d289929fb13320bdca0fdc3a0944adf8')

build() {
  cd "${srcdir}/allegro.pas/lib"
  ppcross386 -Tlinux al3d.pas
  ppcross386 -Tlinux alblend.pas
  ppcross386 -Tlinux alfile.pas
  ppcross386 -Tlinux alflic.pas
  ppcross386 -Tlinux algui.pas
  ppcross386 -Tlinux alvga.pas
}

package() {
  cd "${srcdir}/allegro.pas/lib"
  mkdir -p "$pkgdir/usr/lib/fpc/2.6.0/units/i386-linux/allegro"
  mv *.o "$pkgdir/usr/lib/fpc/2.6.0/units/i386-linux/allegro"
  mv *.ppu "$pkgdir/usr/lib/fpc/2.6.0/units/i386-linux/allegro"
  mv *.a "$pkgdir/usr/lib/fpc/2.6.0/units/i386-linux/allegro"
}