# Contributor: Erik Johnson (palehose at gmail dot com)
pkgname="perl-string-random"
pkgver=0.20
pkgrel=1
pkgdesc="Perl module to generate random strings based on a pattern"
arch=('any')
url="http://search.cpan.org/~steve/String-Random-0.20/Random.pm"
license=('PerlArtistic' 'GPL')
depends=('perl')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://search.cpan.org/CPAN/authors/id/S/ST/STEVE/String-Random-${pkgver}.tar.gz")
md5sums=('20e704a98633ad7b62ae2a73859dd37b')

build() {
  cd "$srcdir/String-Random-$pkgver" || return 1

  # install module in vendor directories.
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
}

