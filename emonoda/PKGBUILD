pkgname=emonoda
pkgver="1.0.0"
pkgrel=1
pkgdesc="The set of tools to organize and management of your torrents"
arch=('any')
url="http://github.com/mdevaev/emonoda"
license="GPL"
depends=(
	'python'
	'python-chardet'
	'python-pyyaml'
	'python-colorama'
	'python-pygments'
)
optdepends=(
	'python-transmissionrpc: Transmission support'
	'python-dbus: KTorrent support'
)
makedepends=('python-setuptools' 'git')
source=(https://pypi.python.org/packages/source/e/emonoda/emonoda-$pkgver.tar.gz)
md5sums=('953947af91ea63cd7bd7b19bdacdbbc1')


build() {
	cd $srcdir/emonoda-$pkgver
	python setup.py build
}

package() {
	cd $srcdir/emonoda-$pkgver
	python setup.py install --root=$pkgdir
}
