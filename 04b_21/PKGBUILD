# PKGBUILD
pkgname=04b_21
pkgver=1
pkgrel=1
license=('custom')
arch=('i686' 'x86_64')
pkgdesc="Symbol font from urbanfonts.com"
url="http://www.urbanfonts.com/fonts/04b_21.htm"
source=("http://www.urbanfonts.com/scripts/index.php?04b_21.zip" "04b_21.install")
install=04b_21.install
md5sums=("59fbc7f2dc53baa8b71034e8364ba910" "a1a8cdd720dc8b3e1129714b72440610")

build() {
	mkdir -p $startdir/pkg/usr/share/fonts/TTF
	# if the font extension is in caps we'll have to rename them
	for i in $startdir/src/*.TTF; do mv $i ${i%%.TTF}.ttf; done
	mv $startdir/src/*.ttf $startdir/pkg/usr/share/fonts/TTF
}
