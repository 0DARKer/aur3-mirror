pkgname=doublecmd-gtk-ppa
_pkgname=${pkgname%-ppa}
pkgver=3730
_pkgver=3730
_pkgpre=0.4.6
pkgrel=1
_pkgsuf=M~natty
pkgdesc="Double Commander is a cross platform open source file manager with two panels side by side. It is inspired by Total Commander and features some new ideas."
arch=('i686' 'x86_64')
url='http://doublecmd.sourceforge.net'
# https://launchpad.net/~alexx2000/+archive/doublecmd
depends=('gtk2')
optdepends=('lua: scripting' 'p7zip: support for 7zip archives' 'libunrar: support for rar archives')
provides=('doublecmd')
conflicts=('doublecmd-svn')
replaces=('doublecmd' 'doublecmd-svn')
license=('GPL2')
options=('!strip')
install=doublecmd-gtk-ppa.install

case ${CARCH} in
  i686)
    _bldarch='i386'
    md5sums=('067b27f795406d1df227864ce8db3150')
    ;;
  x86_64)
    _bldarch='amd64'
    md5sums=('8259762aba33c932da0260fefab63b55')
    ;;
esac

#https://launchpad.net/~alexx2000/+archive/doublecmd/+files/doublecmd-gtk_0.4.6-3751M~lucid_i386.deb
#https://launchpad.net/~alexx2000/+archive/doublecmd/+files/doublecmd-gtk_0.4.6-3730M~natty_i386.deb

_url=https://launchpad.net/~alexx2000/+archive/doublecmd/+files
source=(${_url}/${_pkgname}_${_pkgpre}-${_pkgver}${_pkgsuf}_${_bldarch}.deb)


build() {
    msg2 "Extracting files..."
    cd "$srcdir"
    ar x ${_pkgname}_${_pkgpre}-${_pkgver}${_pkgsuf}_${_bldarch}.deb
    tar xf data.tar.gz --exclude lintian -C $pkgdir
}
