pkgname=ttf-magyarlinuxlibertine	
pkgver=20100611
pkgrel=1
pkgdesc="Linux Libertine (TrueType) for Hungarian"
url="http://numbertext.org/linux/index.html"
license=('custom:GPL' 'OFL')
depends=('fontconfig' 'xorg-font-utils')
arch=('any')
source=(http://www.numbertext.org/linux/MagyarLinLibertine-$pkgver.zip)
md5sums=('cfdb9413fa1f17ec800b3fbd72d6803a')
install=$pkgname.install

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  install -m 664 $srcdir/magyarlinuxlibertine/*Libertine*.ttf $pkgdir/usr/share/fonts/TTF
}
