# Maintainer: Dmytro Kostiuchenko edio@archlinux.us
pkgname=prismatik-git
pkgver=5.10.4.r0.g238caa1
pkgrel=2
pkgdesc="Prismatik is an open-source software to control Lightpack device"
arch=('i686' 'x86_64')
url="https://github.com/Atarity/Lightpack"
license=('GPLv3')
depends=('qt5-base' 'qt5-serialport')
makedepends=('git')
provides=('lightpack', 'prismatik')
nstall=('prismatik.install')
source=('git+https://github.com/Atarity/Lightpack.git'
        'prismatik.install')
md5sums=('SKIP'
         '12553604cf7ca537698d823a35c956b1')

_gitrepo='Lightpack'

pkgver() {
  cd "$srcdir/$_gitrepo"
  # Use the tag of the last commit
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir/$_gitrepo/Software"
  qmake Lightpack.pro 
  make
}

package() {
  mkdir -p $pkgdir/etc/udev/rules.d
  cp $srcdir/$_gitrepo/93-lightpack.rules $pkgdir/etc/udev/rules.d
  mkdir -p $pkgdir/usr/bin
  cp $srcdir/$_gitrepo/Software/src/bin/Prismatik $pkgdir/usr/bin
}

