pkgname=otclient-git
pkgver=20120103
pkgrel=1
license=('MIT')
pkgdesc="An alternative tibia client for otserv"
url="https://github.com/edubart/otclient"
arch=('i686' 'x86_64')
license=('MIT')
depends=('lua' 'boost' 'physfs' 'mesa' 'gmp' 'zlib' 'glew')
makedepends=('git' 'cmake')

_gitroot=git://github.com/edubart/otclient.git
_gitname=otclient
cmake_options="-DHANDLE_EXCEPTIONS=ON -DCMAKE_BUILD_TYPE=ReleaseWithDebInfo"

build() {
  cd $srcdir
  if [[ -d $_gitname ]]; then
    cd $_gitname
    git pull origin
    git submodule update
    git submodule foreach git pull origin master
  else
    git clone $_gitroot $_gitname
    cd $_gitname
    git submodule init
    git submodule update
  fi

  rm -rf build
  mkdir build
  cd build

  cmake -DCMAKE_INSTALL_PREFIX=/usr ${cmake_options} ..
  make
}

package() {
  cd $srcdir/$_gitname/build
  make DESTDIR=$pkgdir install
}

