# Contributor: Ronan Rabouin <darkbaboon@gmail.com>

pkgname=blasphemer
pkgver=0.1.2
pkgrel=1
pkgdesc="A free Heretic game data file (IWAD)"
arch=('any')
url="http://www.jeshimoth.com/jutegyte/$pkgname"
license=('BSD')
source=($url/$pkgname-$pkgver-iwad.zip)
md5sums=('13c0f92adae7c7f37d8e98c5cf58a722')

build() {
  install -d $pkgdir/{usr,usr/share,usr/share/doom}
  mv $pkgname-0.1.1-iwad $pkgname-$pkgver-iwad
  cd $pkgname-$pkgver-iwad

  install -m 644 heretic.wad "$pkgdir"/usr/share/doom/blasphem.wad
}
