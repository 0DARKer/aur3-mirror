pkgname=turses
pkgver=0.0.10
pkgrel=1
pkgdesc="A Twitter client featuring a sexy curses interface"
arch=('any')
url="http://pypi.python.org/pypi/turses/"
license=('GPLv3')
depends=('ncurses' 'python2' 'python2-oauth2' 'python2-twitter' 'python2-httplib2' 'python2-urwid')
source=(http://pypi.python.org/packages/source/t/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('35efc76b25106eedb9c2ce1f6ea7297e  ')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   python2 setup.py install --root="$pkgdir/" --optimize=1
}
