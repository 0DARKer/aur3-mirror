# Maintainer: alejandrogomez <alejandroogomez@gmail.com>

pkgname=turses
pkgver=0.0.13
pkgrel=1
pkgdesc="A Twitter client featuring a sexy curses interface"
arch=('any')
url="http://pypi.python.org/pypi/turses/"
license=('GPLv3')
depends=('ncurses' 'python2' 'python2-oauth2' 'tweepy' 'python2-urwid')
source=(http://pypi.python.org/packages/source/t/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('b37c047ecb65b85734b2dd6f7031069b')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   python2 setup.py install --root="$pkgdir/" --optimize=1
}
