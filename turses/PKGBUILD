# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=turses
pkgver=0.0.2
pkgrel=1
pkgdesc="A ncurses Twitter and identi.ca client"
arch=('any')
url="http://pypi.python.org/pypi/turses/"
license=('GPL3')
depends=('ncurses' 'python2' 'python2-oauth2' 'python2-twitter' 'python2-urwid')
source=(http://pypi.python.org/packages/source/t/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('8256f6db1d1ebee9c38b12d3632ee08a')

build() {
   cd $srcdir/$pkgname-$pkgver

   python2 setup.py install --root $pkgdir --optimize=1
}