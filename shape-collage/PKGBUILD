# Contributor: Nekos <nekoss@gmail.com>

pkgname=shape-collage
pkgver=2.1
pkgrel=1
pkgdesc="Free Automatic Photo Collage Maker"
arch=('i686' 'x86_64')
url="http://www.vincentcheung.ca/shapecollage/"
license=('custom')
depends=('java-runtime' 'bash')
source=("http://www.vincentcheung.ca/shapecollage/2.1/ShapeCollage-2.1.tar.gz" shape-collage.desktop shapecollageicon48.png license.txt)
md5sums=('110a3b1bc89eefc5bd07500462ba1160'
         '76eb4436bd16d242ac96cb63d9ba9d9f'
         '2255196c330a037f5ee6169e74a5755c'
         '787604a3a7d61f676faac5a15a85d3ef')

build() {
  cd "$srcdir"

  install -Dm755 Shape\ Collage/Shape\ Collage "$pkgdir/opt/shape-collage/shape-collage"
  install -Dm644 Shape\ Collage/ShapeCollage.jar "$pkgdir/opt/shape-collage/ShapeCollage.jar"
  install -Dm644 shapecollageicon48.png "$pkgdir/opt/shape-collage/shape-collage.png"
  install -Dm644 shape-collage.desktop "$pkgdir/usr/share/applications/shape-collage.desktop"
  install -Dm644 license.txt "$pkgdir/usr/share/licenses/shape-collage/LICENSE"
}
