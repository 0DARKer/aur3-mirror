# Maintainer: Francois Boulogne <fboulogne at april dot org>
# Contributor: Alexander Dunlap <alexander.dunlap at gmail dot com>
pkgname=bibutils
pkgver=4.16
pkgrel=1
pkgdesc="Tools and converters for bibtex, ris, xml"
arch=("i686" "x86_64")
url="http://sourceforge.net/p/bibutils/home/Bibutils/"
license=('GPL2')
groups=()
depends=()
makedepends=('tcsh')
install=
source=("http://sourceforge.net/projects/bibutils/files/${pkgname}_${pkgver}_src.tgz")
noextract=()
md5sums=('6b4e2270bf2fee35380e98aed00561de')

build() {
  cd "$srcdir/${pkgname}_$pkgver"
  mkdir -p ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}/usr/lib
  ./configure --install-dir "${pkgdir}/usr/bin" --install-lib "${pkgdir}/usr/lib"
  make
}

package(){
  cd "$srcdir/${pkgname}_$pkgver"
  make install
}
