pkgname=gtk-theme-equinox-radiance
pkgver=1.1
pkgrel=1
pkgdesc="Two Radiance GTK and Metacity themes for Equinox engine"
url="http://gnome-look.org/content/show.php/Equinox+Radiance?content=121883"
license=('GPL')
arch=('i686' 'x86_64')
depends=('gtk-engine-equinox')
makedepends=()
conflicts=()
provides=()
options=()
source=("http://gnome-look.org/CONTENT/content-files/121883-equinox-radiance-themes-${pkgver}.tar.gz")
md5sums=('4b11c4b2ea5bf24e0268466d274f2bd6')


build() {
        mkdir -p ${pkgdir}/usr/share/themes
        tar xzf 121883-equinox-radiance-themes-${pkgver}.tar.gz -C ${pkgdir}/usr/share/themes
        chown -R root:root ${pkgdir}/usr/share/themes
}