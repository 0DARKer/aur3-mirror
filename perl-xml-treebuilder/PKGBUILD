pkgname='perl-xml-treebuilder'
pkgver='4.1'
pkgrel='2'
pkgdesc="XML elements with the same interface as HTML::Element"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=('perl-devel-cover' 'perl-html-tagset>=3.02' 'perl-html-tree' 'perl-test-exception' 'perl-test-perl-critic' 'perl-test-pod-coverage' 'perl-xml-parser')
url='http://search.cpan.org/dist/XML-TreeBuilder'
source=('http://search.cpan.org/CPAN/authors/id/J/JF/JFEARN/XML-TreeBuilder-4.1.tar.gz')
md5sums=('1e410f8a38584935fc72a769d655a6d8')
sha512sums=('2666ad3cd3da13117c155d73e2d89966fba150df238d25b29abdb99bdbb95e19f5068a0ad546c9f7003eae73f439f04dde05c211daa2b7e152927319a1e4af0c')
_distdir="XML-TreeBuilder-4.1"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

