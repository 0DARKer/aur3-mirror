pkgname='perl-xml-treebuilder'
pkgver='4.3'
pkgrel='1'
pkgdesc="Parser that builds a tree of XML::Element objects"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-devel-cover' 'perl-html-tagset>=3.02' 'perl-html-tree' 'perl-xml-parser')
makedepends=('perl-test-exception' 'perl-test-perl-critic' 'perl-test-pod-coverage')
url='http://search.cpan.org/dist/XML-TreeBuilder'
source=('http://search.cpan.org/CPAN/authors/id/J/JF/JFEARN/XML-TreeBuilder-4.3.tar.gz')
