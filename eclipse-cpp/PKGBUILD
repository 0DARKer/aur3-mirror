# Maintainer: Patrick Jackson <PatrickSJackson gmail com>
# Contributor: Jesus Jerez <jerezmoreno@gmail.com> 
# based in eclipse PKGBUILD Rev 60114

pkgname=eclipse-cpp
pkgver=3.6.2
pkgrel=1
pkgdesc="Eclipse IDE for C/C++ Developers"
arch=('any')
license=('EPL/1.1')
url="http://eclipse.org"
depends=('java-environment' 'gtk2')
conflicts=('eclipse' 'eclipse-cdt' 'eclipse-mylyn')
provides=('eclipse' 'eclipse-cdt' 'eclipse-mylyn')
install=eclipse.install
if [ "$CARCH" = "x86_64" ]; then
source=(http://mirrors.ibiblio.org/pub/mirrors/eclipse/technology/epp/downloads/release/helios/SR2/eclipse-cpp-helios-SR2-linux-gtk-x86_64.tar.gz eclipse.sh eclipse.desktop)
md5sums=('9f2300d8ab89cbf57718d90fcff0a99c'
         '3e7a2d0004fd0dad9eda14c3be95f389'
         '06186682f0f473a47a2d5a2e1da061c7')
else
source=(http://mirrors.ibiblio.org/pub/mirrors/eclipse/technology/epp/downloads/release/helios/SR2/eclipse-cpp-helios-SR2-linux-gtk.tar.gz eclipse.sh eclipse.desktop)
md5sums=('5e827ce4785e4b2f9016b766320d96b7'
         '3e7a2d0004fd0dad9eda14c3be95f389'
         '06186682f0f473a47a2d5a2e1da061c7')
fi

build() {
  install -m755 -d "${pkgdir}/usr/share"
  mv "${srcdir}/eclipse" "${pkgdir}/usr/share/" || return 1
  mkdir -p ${pkgdir}/usr/bin ${pkgdir}/usr/share/applications ${pkgdir}/usr/share/icons/hicolor/{16x16,32x32,48x48}/apps || return 1
  install -m755 "${srcdir}/eclipse.sh" "${pkgdir}/usr/bin/eclipse" || return 1
  install -m644 "${srcdir}/eclipse.desktop" "${pkgdir}/usr/share/applications/" || return 1
  ln -s /usr/share/eclipse/plugins/org.eclipse.platform_3.6.2.v201102101200/eclipse.png "${pkgdir}/usr/share/icons/hicolor/16x16/apps/eclipse.png" || return 1
  ln -s /usr/share/eclipse/plugins/org.eclipse.platform_3.6.2.v201102101200/eclipse32.png "${pkgdir}/usr/share/icons/hicolor/32x32/apps/eclipse.png" || return 1
  ln -s /usr/share/eclipse/plugins/org.eclipse.platform_3.6.2.v201102101200/eclipse48.png "${pkgdir}/usr/share/icons/hicolor/48x48/apps/eclipse.png" || return 1
}

