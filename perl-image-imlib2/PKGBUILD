# Contributor: d'Ronin <daronin@2600.com>

pkgname=perl-image-imlib2
pkgver=1.13
pkgrel=1
pkgdesc="Interface to the Imlib2 image library"
depends=('perl' 'glibc' 'imlib2' 'perl-module-build')
license=('GPL' 'PerlArtistic')
url="http://cpan.org/modules/by-module/Image"
source=(http://cpan.org/modules/by-module/Image/Image-Imlib2-$pkgver.tar.gz)
md5sums=('7560f9670a3bb314f7ab9585ac40b7a2')
options=('!emptydirs')
arch=(i686 x86_64)
build()
{
  cd $startdir/src/Image-Imlib2-$pkgver

  perl Makefile.PL || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  # Change installation directory to current and remove directory that contains perllocal.pod
  mv $startdir/pkg/usr/lib/perl5/site_perl/?.?.? $startdir/pkg/usr/lib/perl5/site_perl/current
}
