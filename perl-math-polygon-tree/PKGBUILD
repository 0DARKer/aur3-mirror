pkgname=perl-math-polygon-tree
_cpanname=Math-Polygon-Tree
pkgver=0.04
pkgrel=1
pkgdesc="Fast check if object is inside polygon"
arch=('any')
url="http://search.cpan.org/~LIOSHA/${_cpanname}"
license=('GPL' 'PerlArtistic')
depends=('perl-math-geometry-planar-gpc-polygon' 'perl-list-moreutils')
makedepends=('perl-extutils-makemaker')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/L/LI/LIOSHA/Math-Polygon-Tree-0.04_1.tar.gz)
md5sums=('6d4fe6abfdf5aae4a3c6faf4d565f0cf')
 
build() {
  cd $srcdir/${_cpanname}-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd $srcdir/${_cpanname}-${pkgver}
  make install DESTDIR=$pkgdir
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
