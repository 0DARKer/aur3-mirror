# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=libibmad
pkgver=1.3.9
pkgrel=1
pkgdesc="OpenFabrics Alliance InfiniBand MAD library"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibumad')
source=("http://www.openfabrics.org/downloads/management/${pkgname}-${pkgver}.tar.gz")
# cksum start
md5sums=('5bff1406b95d6165ae31acc9f01482e0')
sha512sums=('f43bc1d8cbba0df095d36963b914f44267c9bffd011ef0589f9ed47f26363a4ddd121b7e5877e6d9816f5858fad2ba9691635528270cb0644c8aa6d588a73139')
# cksum end

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --mandir=/usr/share/man \
              --sysconfdir=/etc \
              --localstatedir=/var
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}