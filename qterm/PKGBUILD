pkgname=qterm
pkgver=0.4.1
pkgrel=1
pkgdesc="QTerm is a BBS client for Linux, written in Qt"
depends=('qt3' 'python24')
url="http://sourceforge.net/projects/qterm/"
arch=('i686' 'x86_64')
license=('GPL')
source=(http://dl.sourceforge.net/sourceforge/qterm/$pkgname-$pkgver.tar.bz2)
md5sums=('8aafa805d96abee4a06a4c5c762f766e')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr --with-qt-dir=/opt/qt
	make || return 1
	make DESTDIR=$startdir/pkg install
}
