# Maintainer: Limao Luo <luolimao@gmail.com>
# Contributor: Lee.MaRS <leemars@gmail.com>

pkgname=ibus-table-extraphrase-git
pkgver=20120820
pkgrel=1
pkgdesc="The extra phrases of tables engines for IBus."
arch=(i686 x86_64)
url="http://code.google.com/p/ibus/"
license=(LGPL)
depends=("ibus-table>=1.3.9")
provides=(ibus-table-extraphrase=1.3.9)
conflicts=(ibus-table-extraphrase)
makedepends=(git cvs)
options=(!libtool)

_gitroot="git://github.com/acevery/ibus-table-extraphrase.git"
_gitname="ibus-table-extraphrase"

build() {
    cd $srcdir
    msg "Connecting to GIT server...."

    if [ -d $_gitname ] ; then
	cd $_gitname && git pull origin master
	msg "The local files are updated."
    else
	git clone $_gitroot
    fi

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    rm -rf $srcdir/$_gitname-build
    cp -r $srcdir/$_gitname $srcdir/$_gitname-build
    
    cd $srcdir/$_gitname-build

    ./autogen.sh --prefix=/usr --libexecdir=/usr/lib/ibus
    _corecount=$(grep -i processor /proc/cpuinfo | wc -l)
    make -j$_corecount
}

package() {
    cd $srcdir/$_gitname-build
    make DESTDIR=$pkgdir install
} 
