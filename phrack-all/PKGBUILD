# Maintainer: Your Name <daz@daz.root+arch@gmail.com>
pkgname=phrack-all
_name=phrack
pkgver=68
pkgrel=1
pkgdesc="Hacker magazine by the community, for the community"
arch=('any')
url="http://www.phrack.org/"
license=('unknown')

source=()
md5sums=()
noextract=()

for i in $(seq $pkgver); do
    source[$i]="http://phrack.org/archives/tgz/${_name}${i}.tar.gz"
    noextract[$i]="phrack${i}.tar.gz"
    md5sums[$i]="SKIP"
done


prepare() {
    cd "$srcdir/"
    for i in $(seq $pkgver); do
        mkdir ${i}
        tar -C ${i} -xzvf ${_name}${i}.tar.gz > /dev/null
    done
}

package() {
    cd "$srcdir/"

    for i in $(seq $pkgver); do
        mkdir -p ${pkgdir}/usr/share/doc/${_name}/${i}
        install ${i}/* ${pkgdir}/usr/share/doc/${_name}/${i}
    done
}
