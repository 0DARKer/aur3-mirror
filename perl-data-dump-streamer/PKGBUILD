pkgname='perl-data-dump-streamer'
pkgver='2.25'
pkgrel='1'
pkgdesc="Accurately serialize a data structure as Perl code."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-b-utils')
makedepends=('perl>=5.006' 'perl-extutils-depends')
url='http://search.cpan.org/dist/Data-Dump-Streamer'
source=('http://search.cpan.org/CPAN/authors/id/J/JJ/JJORE/Data-Dump-Streamer-2.25.tar.gz')
md5sums=('4ba471c94cc529c579d64dbc6d3458ab')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/Data-Dump-Streamer-2.25"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  cd "$DIST_DIR"
  $PERL Build.PL
  $PERL Build
  $PERL Build test
  $PERL Build install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

