# Maintainer: Borja Ruiz <borja [at] libcrack [dot] so> 
pkgname=sysdig-git
pkgver=0.1.72.r21.gb153bfb
pkgrel=9
pkgdesc="Open source system-level exploration and troubleshooting tool"
arch=('i686' 'x86_64')
url="http://www.sysdig.org/"
license=('GPL2')
depends=('gcc-libs-multilib' 'dkms')
makedepends=('git' 'gcc' 
             'make' 'cmake' 
             'linux-headers')
conflicts=('sysdig')
provides=('sysdig')
source=("$pkgname"::'git+https://github.com/draios/sysdig.git')
md5sums=('SKIP')
install="sysdig-git.install"

pkgver() {
  cd "$srcdir/$pkgname"
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir/$pkgname"
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DSYSDIG_VERSION="$pkgver" ..
  make
}

package() {
  msg "SURMAN> cd \$srcdir/\$pkgname"
  msg "SURMAN> cd $srcdir/$pkgname"
  cd "$srcdir/$pkgname"
  cd build
  make DESTDIR="$pkgdir/" install
}
# vim:set ts=8 sts=2 sw=2 et:
