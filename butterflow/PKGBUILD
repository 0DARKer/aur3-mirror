# Maintainer: Duong Pham <dthpham@gmail.com>
pkgname=butterflow
pkgver=0.1.4a1
pkgrel=1
pkgdesc="Make slow motion and smooth motion videos from the command line"
arch=('i686' 'x86_64')
url="https://github.com/dthpham/butterflow"
license=('custom')
makedepends=('git')
depends=('python2-numpy' 'ffmpeg>=2.4.1' 'opencv=2.4.9' 'libcl')
optdepends=('opencl-nvidia: NVIDIA device support'
            'opencl-nvidia-304xx: NVIDIA legacy device support'
            'intel-opencl-sdk: Intel device support'
            'amdapp-sdk: AMD device suppport'
            'opencl-mesa: AMD/ATI Radeon device support'
            'beignet-git: Intel IvyBridge device support')
provides=('butterflow')
conflicts=('butterflow')
install=butterflow.install
source=("https://github.com/dthpham/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('44560aac279ae337eac49c0fe7d734a0')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  rm -rf .git
  git init
  rm -rf repos/opencv-ndarray-conversion
  git submodule add --force \
    https://github.com/dthpham/opencv-ndarray-conversion.git \
    repos/opencv-ndarray-conversion
  python2 setup.py init
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
