# Maintainer: p2k <Patrick.Schneider@uni-ulm.de>
pkgname=php-zend-debugger
pkgver=5.2.15
pkgrel=1
pkgdesc="PHP extension for debugging web servers with Eclipse"
arch=('i686' 'x86_64')
url="http://www.zend.com/en/community/pdt"
license=('custom')
depends=('php>=5.2')
install="${pkgname}.install"

if [ "$CARCH" == "x86_64" ];then
	DL_ARCH=x86_64
	md5sums=('ff116ca44302951e039c0816864d8c6b' 'a05ccbf63773d122acfce45de60d048a')
else
	DL_ARCH=i386
	md5sums=('5b0a47f6c20277d1f77834c87f800066' 'a05ccbf63773d122acfce45de60d048a')
fi

source=(http://downloads.zend.com/pdt/server-debugger/ZendDebugger-$pkgver-linux-glibc23-$DL_ARCH.tar.gz ${pkgname}.install)

build() {
	cd "$srcdir/ZendDebugger-${pkgver}RC1-linux-glibc23-$DL_ARCH"
	install -D -m 744 5_2_x_comp/ZendDebugger.so "$pkgdir/usr/lib/php/ZendDebugger.so"
}

