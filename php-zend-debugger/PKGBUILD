# Maintainer: Shanto <shanto@hotmail.com>
# Contributor: p2k <Patrick.Schneider@uni-ulm.de>

pkgname=php-zend-debugger
pkgver=5.3.18
_pkgrel=20110322
pkgrel=2
pkgdesc="Zend Debugger extention for PHP"
arch=('i686' 'x86_64')
url="http://www.zend.com/en/community/pdt"
license=('custom')
depends=('php>=5.3')
conflicts=('zend-debugger')
provides=('zend-debugger')
install=${pkgname}.install
source=(
	http://downloads.zend.com/pdt/plugins/org.zend.php.debug.debugger.linux.x86_64_${pkgver}.v${_pkgrel}.jar
	zend_debugger.ini
	${pkgname}.install
)
md5sums=(
	977a70d7513f47fb2aea246354ff0149
	ed5430a12114428be83fa3fb08e740b1
	abbdb49cf13828f4cb08791af299558a
)
[ "$CARCH" == "i686" ] && {
	source[0]=${source[0]/x86_64/x86}
	md5sums[0]=588f6645ac8dd72f25e62f5ae48332f9
}

build() {
	cd "$srcdir"
	find -path 5_3_x_comp/ZendDebugger.so
	install -D -m 744 resources/php53/ZendDebugger.so "$pkgdir/usr/lib/php/modules/zend_debugger.so"
	install -D -m 744 ../zend_debugger.ini "$pkgdir/etc/php/conf.d/zend_debugger.ini"
}
