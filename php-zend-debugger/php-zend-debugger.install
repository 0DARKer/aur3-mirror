
print_info() {
  echo " ==> Please add the following lines to your /etc/php/php.ini"
  echo ""
  echo " zend_extension=/usr/lib/php/ZendDebugger.so"
  echo " zend_debugger.allow_hosts=<ip_addresses>"
  echo " zend_debugger.expose_remotely=always"
  echo ""
}

post_install() {
  print_info
}

post_upgrade() {
  print_info
}

