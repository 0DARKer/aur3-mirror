# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=amarok-webui
pkgver=0.36
pkgrel=1
pkgdesc="Web interface for Amarok (2.x)"
url="http://opendesktop.org/content/show.php/?content=114438"
arch=('any')
license=('GPL')
depends=('amarok')
source=("http://opendesktop.org/CONTENT/content-files/114438-${pkgname}.amarokscript.tar.gz")
md5sums=('c337a464da20f5d15411d275aa9bc881')

package() {
  cd ${srcdir}/${pkgname}

  install -d ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}
  install -m644 {amarokcontent,amarokctrl,conf,fileio,httpserver,main,util}.js \
    script.spec ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}
  cp -rf www ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}/
}
