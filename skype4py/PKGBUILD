# Contributor: Stanislav Karchebny <berkus+arch@madfire.net>

pkgname=skype4py
pkgver=1.0.32.0
pkgrel=4
pkgdesc='Python wrapper for Skype public API.'
arch=('i686' 'x86_64') # NOTE: x86_64 needs a 32 bit python interpretor
license=('BSD')
url='https://developer.skype.com/wiki/Skype4Py'
depends=('python' 'skype')
source=("http://downloads.sourceforge.net/skype4py/Skype4Py-$pkgver.tar.gz")
md5sums=('0dc52c41b7f24815ff88d6af4c10de04')

build() {
  chmod -R a+rX Skype4Py-$pkgver/
  chmod -R u+w Skype4Py-$pkgver/

  cd Skype4Py-$pkgver

  python setup.py install --root="$pkgdir" --prefix=/usr || return 1

  install -d "${pkgdir}/usr/share/licenses/${pkgname}"
  mv "${pkgdir}/usr/lib/python2.6/site-packages/Skype4Py/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/"
}
