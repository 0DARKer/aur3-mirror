# Contributor: Gean Marcos Geronymo <gean.geronymo@gmail.com>
# Maintainer: Laszlo Papp <djszapi2 at gmail com>
pkgname=picprog
pkgver=1.9.0
pkgrel=3
pkgdesc="PIC16, PIC12 and PIC18 microcontroller programmer for Linux"
arch=('i686')
license=('GPL')
depends=('gcc-libs')
url="http://hyvatti.iki.fi/~jaakko/pic/picprog.html"
source=(http://www.iki.fi/hyvatti/pic/${pkgname}-${pkgver}.tar.gz
        http://gean.digeronymo.com/${pkgname}/${pkgname}.patch)
md5sums=('a43e33b760952834052695fbbe31b0f1'
        'a0bb2a57eeef0a37a197c3ce4e16cd7e')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p1 -i ../picprog.patch || return 1
  sed -i "s_/usr/local/_"${pkgdir}"/usr/_" Makefile || return 1
  sed -i -e 's/usr\/man/\/usr\/share\/man/' Makefile || return 1
  install -d ${pkgdir}/usr/{bin,/share/man/man1}
  make dep || return 1
  make || return 1
  make install || return 1
}
