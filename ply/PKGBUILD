# Contributor: Mikko Sysikaski <mikko.sysikaski@gmail.com>
pkgname=ply
pkgver=3.3
pkgrel=1
pkgdesc="PLY is an implementation of lex and yacc parsing tools for Python."
arch=('i686' 'x86_64')
url="http://www.dabeaz.com/ply/"
license=('LGPL')
depends=(python)
makedepends=(python)
source=(http://www.dabeaz.com/ply/$pkgname-$pkgver.tar.gz)
md5sums=('4a7f837f71a7c1ea6b5b0c57272909c7')

build() {
  cd $startdir/src/$pkgname-$pkgver
  python setup.py build
  python setup.py install --prefix=/usr --root=$startdir/pkg
}
