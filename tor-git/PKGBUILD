# Contributor: skydrome <skydrome@i2pmail.org>
# Maintainer: skydrome <skydrome@i2pmail.org>

pkgname=tor-git
_branch=master
#_branch=maint-0.2.4
pkgver=0.2.5.1.alpha.17778
pkgrel=1
pkgdesc="An anonymizing overlay network (development version)"
arch=('i686' 'x86_64' 'armv6h')
url="http://www.torproject.org"
license=('BSD')
depends=('openssl' 'ca-certificates' 'libevent' 'libseccomp')
makedepends=('asciidoc')
optdepends=('torsocks-git: for torify support')
conflicts=('tor')
provides=('tor')
install='tor.install'
backup=('etc/tor/torrc')
source=("git+https://git.torproject.org/tor.git#branch=${_branch}"
        'torrc'
        'tor.service')
sha256sums=('SKIP'
            'e49f03ed46ce9cc4c4c53449c1cf7946bd363e9de98c73fe4618abc3b86950e9'
            '5acd97eed1e4e175d5d547704a7d125009de6dc51d3c7163b7311e82fd34e9a2')

pkgver () {
    cd "$srcdir/tor"
    echo "$(grep AC_INIT configure.ac \
        | sed 's/.*\[\(.*\)\].*/\1/;s/-/./g;s/.dev//').$(git rev-list --count origin/$_branch)"
}

prepare() {
     cd "$srcdir/tor"
    ./autogen.sh
}

build() {
    cd "$srcdir/tor"
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var
        #--with-tcmalloc
        #--enable-openbsd-malloc
        #--with-dmalloc
    make
}

check() {
    cd "$srcdir/tor"
    make test #|| true
}

package() {
    cd "$srcdir/tor"
    make DESTDIR="$pkgdir" install

    rm -f "$pkgdir/etc/tor/tor-tsocks.conf"
    install -dm700 "$pkgdir/var/lib/tor"
    install -Dm644 "$srcdir/torrc"       "$pkgdir/etc/tor/torrc"
    install -Dm644 "$srcdir/tor.service" "$pkgdir/usr/lib/systemd/system/tor.service"
    install -Dm644 LICENSE               "$pkgdir/usr/share/licenses/tor/LICENSE"
}
