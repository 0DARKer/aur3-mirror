
pkgname=polymorphable
pkgver=0.18
pkgrel=1
pkgdesc="Laurelia's Polymorphable Citizen (or just Polymorphable for short) is an action-rpg based on the Flare engine"
arch=('any')
url="https://github.com/makrohn/polymorphable"
license=('GPL')
depends=('flare-rpg>=0.18')
source=(https://github.com/makrohn/polymorphable/archive/flare0.18_mod_only.tar.gz)
md5sums=('8ce8c287da3fb9be7d5c11d04e912602')
install=polymorphable.install

package() {
	cd "$srcdir/polymorphable-flare0.18_mod_only"

	mkdir -p "$pkgdir"/usr/share/flare/mods/
	cp -r mods/polymorphable "$pkgdir"/usr/share/flare/mods/
}
