# Mantainer: supernbo at gmail dot com <supernbo@gmail.com>

pkgname=gtk-theme-libra
pkgver=0.7
pkgrel=1
pkgdesc="A light modern theme derived from Flattastic-Blue"
arch=('any')
url="http://gnome-look.org/content/show.php/Libra?content=167689"
source=("http://gnome-look.org/CONTENT/content-files/167689-Libra07.tar.gz")
license=('GPL')
md5sums=('d77e9658f9f8a4155b36d04f8bbc0d3f')

package() {
    mkdir -p $pkgdir/usr/share/themes/
    cp -rp $srcdir/Libra $pkgdir/usr/share/themes/
    cd $pkgdir/usr/share/themes/
    chmod -R 644 Libra/*
}
