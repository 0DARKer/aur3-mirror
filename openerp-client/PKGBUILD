# Maintainer: Dan Serban
# Contributors: tocer deng, Herve Cauwelier

pkgname=openerp-client
pkgver=6.0.3
pkgrel=1
pkgdesc="OpenERP client"
url=http://openerp.com/
arch=(i686 x86_64)
license=(GPLv3)
depends=('pygtk' 'python-egenix-mx-base' 'python-lxml' 'python2' 'python2-matplotlib' 'python2-pytz' 'pyxml' 'hippo-canvas' 'pydot')
conflicts=(python2-openerp-client)
source=("http://www.openerp.com/download/stable/source/openerp-client-${pkgver}.tar.gz")
md5sums=('81d96ef7fb7650d77c00f4f135a60c5f')

build()
{
  cd openerp-client-${pkgver}
  python2 setup.py install --root="${pkgdir}"
  cd "${pkgdir}"/usr/bin
  sed -i 's/cd .*pkg/cd /' openerp-client
}

