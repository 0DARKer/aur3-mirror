# Maintainer: Bidossessi Sodonon

pkgname=openerp-client
pkgver=6.1
pkgrel=1
pkgdesc="OpenERP client"
url=http://openerp.com/
arch=(i686 x86_64)
license=(GPLv3)
depends=('python2' 'glade' 'python2-dateutil' 'gts'  'graphviz' 'python2-distribute' 'python2-pyparsing' 'python-egenix-mx-base' 'python-lxml' 'python2' 'python2-matplotlib' 'python2-pytz' 'pyxml' 'hippo-canvas' 'pydot')
conflicts=(python2-openerp-client)
source=("http://nightly.openerp.com/6.1/releases/${pkgname}-${pkgver}-${pkgrel}.tar.gz")

build()
{
  cd ${srcdir}/${pkgname}-${pkgver}.${pkgrel}
  python2 setup.py install --root="${pkgdir}"
  mkdir ${pkgdir}/usr/share/applications -p
  install -Dm 644 ${srcdir}/${pkgname}-${pkgver}.${pkgrel}/debian/desktop/openerp-client.desktop ${pkgdir}/usr/share/applications/openerp-client.desktop
  #cd "${pkgdir}"/usr/bin
  #sed -i 's/cd .*pkg/cd /' openerp-client
}


md5sums=('f0d349bfa0f1d8979b36a64bd5204b0c')
