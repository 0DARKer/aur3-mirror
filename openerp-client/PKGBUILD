pkgname=openerp-client
pkgver=6.0.2
pkgrel=1
pkgdesc="OpenERP client (python2)"
url="http://openerp.com/"
arch=('i686' 'x86_64')
license=(GPL3)
depends=('python2>=2.4' 'pygtk' 'python2-matplotlib' 'python-egenix-mx-base'
'pyxml' 'python2-pytz' 'hippo-canvas' 'python-lxml')
optdepends=('pydot')
conflicts=('python2-openerp-client')
source=(http://www.openerp.com/download/stable/source/$pkgname-$pkgver.tar.gz)
md5sums=('4e844b1a475dfb1665beb4bd7150e962')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root=$pkgdir
  cd $pkgdir/usr/bin/
  sed -i 's/cd .*pkg/cd /' openerp-client
}

