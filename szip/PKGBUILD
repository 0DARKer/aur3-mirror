pkg=szip
flavour=
pkgname=${pkg}${flavour}
pkgver=2.1
pkgrel=0
pkgdesc="High compression library"
url="http://www.hdfgroup.org/doc_resource/SZIP"
license="Free for Non-Commercial"
depends=()
makedepends=()
provides=()
conflicts=()
replaces=()
arch=(i686 x86_64)
backup=()
install=
source=(ftp://ftp.hdfgroup.org/lib-external/szip/${pkgver}/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('1e0621efa66c2e1b07d7659703df5ea8')

build() {
  cd $startdir/src/$pkg-$pkgver/
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
