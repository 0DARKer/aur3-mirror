# Contributor: 3ED <krzysztof1987 at gmail dot com>

skiptest=0

pkgname='perl-opcodes'
_pkgname='Opcodes'
pkgver='0.10'
pkgrel='1'
pkgdesc="Opcodes perl module"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Opcodes/'
source=(http://search.cpan.org/CPAN/authors/id/R/RU/RURBAN/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('69a9dbde24bf8668214f3a057358b3939aa958b21b341db4607a2408678fe776')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  [ "$skiptest" = "1" ] || make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
