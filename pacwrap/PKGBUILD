pkgname=pacwrap
pkgver=0.2.0
pkgrel=1
pkgdesc="Wraps the 'pacman' and 'packer' tools"
arch=("any")
url="http://github.com/bruenig/${pkgname}"
license=("GPL3")
depends=("bash" "packer")
options=(!emptydirs)
source=(${pkgname}.sh)

package() {
	cd "${srcdir}"

	install -D -m755 ${pkgname}.sh "${pkgdir}"/usr/bin/${pkgname}.sh
}

sha1sums=('720dbca15790e1e3d09fde08457a38fb6ebbe4f0')
