pkgname=pacwrap
pkgver=0.2.1
pkgrel=1
pkgdesc="Wraps the 'pacman' and 'packer' tools"
arch=("any")
url="http://github.com/bruenig/${pkgname}"
license=("GPL3")
depends=("bash" "packer")
options=(!emptydirs)
source=(${pkgname})

package() {
	cd "${srcdir}"

	install -D -m755 ${pkgname} "${pkgdir}"/usr/bin/${pkgname}
}

sha1sums=('876bdb80edaf075bbb4dba3eb32b8e83d302ccd7')
