# Contributor: Stephane Travostino <stephane.travostino@gmail.com>
# Contributor: Calogero Lo Leggio <kalos@autistici.org>
# Contributor: Daniel Albers <daniel@lbe.rs>
pkgname=bareos-bat
pkgver=12.4
pkgrel=1
pkgdesc="Bareos Administration Tool Console"
arch=(i686 x86_64)
url="http://www.bareos.org"
license=('AGPL3')
dependqs=('qt4')
makedepends=('git')
backup=(etc/bat.conf)
source=("git+https://github.com/bareos/bareos#branch=Branch-12.4"
        "00-qmake4.patch")
md5sums=('SKIP'
         'SKIP')
sha1sums=('SKIP'
          'SKIP')

build() {
    pushd "${srcdir}/bareos"

    patch -Np3 -i ../00-qmake4.patch

    ./configure --prefix=/usr --sbindir=/usr/bin \
    --enable-client-only --enable-bat \
    --with-x --with-openssl \
    --sysconfdir=/etc/

    make
}

package() {
    # install only bat files
    mkdir -p ${pkgdir}/usr/bin/ ${pkgdir}/usr/lib/ ${pkgdir}/etc/
    mkdir -p ${pkgdir}/usr/share/man/man1/ ${pkgdir}/usr/share/applications/ ${pkgdir}/usr/share/pixmaps/
    install -m755 ${srcdir}/bareos/src/lib/.libs/*-*.so ${pkgdir}/usr/lib
    install -m755 ${srcdir}/bareos/src/findlib/.libs/*-*.so ${pkgdir}/usr/lib
    install -m644 ${srcdir}/bareos/src/qt-console/bat.conf ${pkgdir}/etc/bat.conf
    install -m644 ${srcdir}/bareos/src/qt-console/bat.desktop ${pkgdir}/usr/share/applications/bat.desktop
    install -m644 ${srcdir}/bareos/src/images/bat.png ${pkgdir}/usr/share/pixmaps/bat.png
    install -m755 ${srcdir}/bareos/src/qt-console/bat ${pkgdir}/usr/bin/bat
}



