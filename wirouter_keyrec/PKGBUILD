
pkgname=wirouter_keyrec
pkgver=1.0.3
pkgrel=1
pkgdesc="WiRouter KeyRec is a powerful and platform indipendent software to recover the default WPA passphrases of the supported router's 
models (Telecom Italia Alice AGPF, Fastweb Pirelli, Fastweb Tesley)."
arch=('i686' 'x86_64')
url="http://www.salvatorefresta.net/index.php/tools#3"
license=('GPL3')
depends=()
makedepends=( 'make')
source=(http://tools.salvatorefresta.net/WiRouter_KeyRec_$pkgver.zip)
md5sums=('cf6e6392695dda1b15b6691781f197ac')

build() {
  cd $srcdir/WiRouter_KeyRec_$pkgver

  make || return 1
  mkdir -p $pkgdir/etc/wirouterkeyrec
  mkdir -p $pkgdir/usr/bin 
       install wirouterkeyrec  $pkgdir/usr/bin
        install config/agpf_config.lst  $pkgdir/etc/wirouterkeyrec
        chmod 755 $pkgdir/usr/bin/wirouterkeyrec


} 
