# Maintainer: György Balló <ballogy@freestart.hu>
_pkgbase=ido
pkgname=ido3
pkgver=0.3.1
pkgrel=3
pkgdesc="Widgets and other objects used for indicators"
arch=('i686' 'x86_64')
url="https://launchpad.net/ido"
license=('LGPL')
makedepends=('gtk3-ubuntu')
options=(!libtool)
source=(http://launchpad.net/$_pkgbase/0.3/$pkgver/+download/$_pkgbase-$pkgver.tar.gz
        rgba.patch
        style.patch)
md5sums=('dddc90364b01a0a6259a1872c47b77f3'
         'c877e6d56c6db30459988c96eb2c7280'
         'b24bf879ef6a503dcab5baa1d79da491')

build() {
  cd "$srcdir/$_pkgbase-$pkgver"
  patch -Np0 -i "$srcdir/rgba.patch"
  patch -Np0 -i "$srcdir/style.patch"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$_pkgbase \
              --disable-static
  make
}

package(){
  pkgdesc+=" (GTK+ 3 library)"
  depends=('gtk3-ubuntu')

  cd "$srcdir/$_pkgbase-$pkgver"

  make DESTDIR="$pkgdir/" install
}
