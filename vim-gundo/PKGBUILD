# Maintainer: lolilolicon <lolilolicon_at_gmail_dot_com>

_name=gundo
pkgname=vim-gundo
pkgver=2.2.2
pkgrel=1
_scriptid=16172
pkgdesc="Vim plugin to visualize your Vim undo tree"
arch=(any)
url="http://www.vim.org/scripts/script.php?script_id=3304"
license=('GPLv2+')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=($_name-$pkgver.zip::http://www.vim.org/scripts/download_script.php?src_id=$_scriptid)
md5sums=('ee5bcd4f714ae604d2bd3fdd49e84288')

package() {
  cd "$srcdir"/$_name
  local installpath=$pkgdir/usr/share/vim/vimfiles
  install -D -m644 doc/$_name.txt "$installpath"/doc/$_name.txt
  install -D -m644 autoload/$_name.vim "$installpath"/autoload/$_name.vim
  install -D -m644 autoload/$_name.py "$installpath"/autoload/$_name.py
  install -D -m644 plugin/$_name.vim "$installpath"/plugin/$_name.vim
  install -D -m644 plugin/$_name.py "$installpath"/plugin/$_name.py
}
