# Maintainer: Miroslav Koskar (http://miroslavkoskar.com/)

_pkgname='libaosd'
pkgname="$_pkgname-xinerama-git"
pkgver='r0'
_upstreamver='0.2.7'
pkgrel=1
pkgdesc='libaosd (Atheme OSD) with Xinerama support and aosd_cat enhancements'
url='https://github.com/mkoskar/libaosd'
license=('MIT/X11')
arch=('i686' 'x86_64')
depends=('libxcomposite' 'libxinerama' 'pango')
provides=('libaosd')
conflicts=('libaosd')
makedepends=('git')

source=("git+https://github.com/mkoskar/$_pkgname.git")
md5sums=('SKIP')

pkgver() {
    cd "$_pkgname"
    printf '%s.r%s.%s.%s' \
        "$_upstreamver" \
        "$(git rev-list --count HEAD)" \
        "$(git rev-parse --short HEAD)" \
        "$pkgrel"
}

package() {
    cd "$_pkgname"

    ./autogen.sh
    ./configure --prefix=/usr
    make DESTDIR="$pkgdir" install
    install -D -m 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
