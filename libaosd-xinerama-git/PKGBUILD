# Maintainer: Miroslav Koskar (http://miroslavkoskar.com/)

pkgname='libaosd-xinerama-git'
pkgver='r0'
upstreamver='0.2.7'
pkgrel=1
pkgdesc='libaosd (Atheme OSD) with Xinerama support and aosd_cat enhancements'
url='https://github.com/miroslavkoskar/libaosd'
arch=('i686' 'x86_64')
license=('MIT/X11')
depends=('libxcomposite' 'libxinerama' 'pango')
provides=('libaosd')
conflicts=('libaosd')
makedepends=('git')

source=('git+https://github.com/miroslavkoskar/libaosd.git')
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/libaosd"
    printf '%s.%s.%s' "$upstreamver" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd "$srcdir/libaosd"
    ./autogen.sh
    ./configure --prefix=/usr
    make DESTDIR="$pkgdir" install
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
