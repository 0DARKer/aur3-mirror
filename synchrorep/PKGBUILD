#Mantainer: Matias Hernandez <msdark@archlinux.cl>
#Contributor: Matias Hernandez <msdark@archlinux.cl>
pkgname=synchrorep
pkgver=1.4.4
pkgrel=2
pkgdesc="An opensource software to synchronize two directories, to work with nautilus (Gnome)"
arch=(i686)
url="http://www.iceberg.0rg.fr/english/synchrorep/"
license=('GPL')
depends=('sqlite3' 'gtk2' 'zenity' 'nautilus')
provides=()
options=('strip')
source=(http://www.iceberg.0rg.fr/all_packages/${pkgname}-${pkgver}-sources.tar.gz
newMakefile)
md5sums=('95725c940e077ba2884e058630110954'
         'e6676f1ba3b501350cea222ef81d772c')

build() {
  cd "$srcdir/$pkgname-make"
  make || return 1
  cp ../../newMakefile Makefile
  make DESTDIR="$pkgdir/" install
}

