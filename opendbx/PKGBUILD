pkgname=opendbx
pkgver=1.4.2
pkgrel=1
pkgdesc="Extremely lightweight but extensible database access library written in C."
arch=('x86_64')
url="http://www.linuxnetworks.de/doc/index.php/OpenDBX"
license=('LGPL2')
options=(!libtool)
makedepends=('libfbclient' 'libmysqlclient' 'unixodbc' 'postgresql-libs' 'sqlite2' 'sqlite3' 'freetds')
source=(http://linuxnetworks.de/opendbx/download/${pkgname}-${pkgver}.tar.gz)
md5sums=('15c9f6648e793422ba3912e49a232aa6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  CPPFLAGS=${CPPFLAGS}" -I/usr/include/mysql"\
  ./configure --with-backends="firebird mysql mssql odbc pgsql sqlite sqlite3 sybase" \
              --prefix=/usr
  make -j1 || return 1
  make DESTDIR="${pkgdir}/" install
}

