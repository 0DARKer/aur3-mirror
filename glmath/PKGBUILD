# Peter Hatina <phatina AT gmail.com>
pkgname=glmath
pkgver=0.9.0.6
pkgrel=1
pkgdesc="C++ mathematics library for 3D software based on the OpenGL Shading Language (GLSL) specification."
arch=('i686' 'x86_64')
depends=('make' 'cmake')
license=('GPL')
sources=("glm-$pkgver.zip")
source=("http://sourceforge.net/projects/ogl-math/files/glm-$pkgver/glm-$pkgver.zip")
url="https://sourceforge.net/projects/ogl-math/files/glm-$pkgver"
md5sums=('1a37e998be65f1d8a95001e59ea2dac8')

build() {
    cd $srcdir/glm-${pkgver}

    cmake . || return 1
    make || return 1
}

package() {
    cd $pkgdir
    mkdir -p usr/include/glm
    cd usr/include/glm
    cp -r $srcdir/glm-${pkgver}/glm/core .
    cp -r $srcdir/glm-${pkgver}/glm/gtc .
    cp -r $srcdir/glm-${pkgver}/glm/gtx .
    cp -r $srcdir/glm-${pkgver}/glm/img .
    cp -r $srcdir/glm-${pkgver}/glm/virtrev .
    cp -r $srcdir/glm-${pkgver}/glm/*.hpp .
    
    cd $pkgdir
    mkdir -p usr/bin
    cd usr/bin
    cp -r $srcdir/glm-${pkgver}/glm/glm .
}
