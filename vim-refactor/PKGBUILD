pkgname=vim-refactor
pkgver=1.03
_scriptid=8029
pkgrel=2
pkgdesc="C/C++ refactoring tool"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=2087"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('f3296fd79b8356bb09f2392d0d51f8e0'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/colors/refactor.vim || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
