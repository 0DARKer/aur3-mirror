# Maintainer: Techlive Zheng <techlivezheng@gmail.com>

_pkgname=gnome-code-assistance
pkgname=gnome-code-assistance-git
pkgver=r395.11689d0
pkgrel=1
pkgdesc="gnome code assistance"
arch=('i686' 'x86_64')
url="https://wiki.gnome.org/Projects/CodeAssistance"
license=('GPL')
depends=()
makedepends=('git' 'vala')
provides=('gnome-code-assistance')
replaces=('gnome-code-assistance')
conflicts=('gnome-code-assistance')
source=('git+git://git.gnome.org/gnome-code-assistance')
sha512sums=('SKIP')

pkgver() {
  cd "${srcdir}"/"${_pkgname}"
  printf "r%s.%s" "$(git rev-list --count master)" "$(git rev-parse --short master)"
}

build() {
  cd "${srcdir}"/"${_pkgname}"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/"${_pkgname}"
  make DESTDIR="${pkgdir}"/ install
}

# vim:set ts=2 sw=2 et:
