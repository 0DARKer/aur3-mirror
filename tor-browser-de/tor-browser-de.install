post_install() {
	chown -R 1000:1000 /opt/tor-browser-de/

	echo ""
	echo "==> Tor-Browser's Dateien sollten besessen werden vom Benutzer,"
	echo "==> der sie normalerweise verwendet."
	echo "==> Ich habe sie dem Benutzer mit der user id 1000 als Besitz"
	echo "==> gegeben. Ist die id deines Hauptbenutzers nicht 100,"
	echo "==> solltest du sie manuell Ã¤ndern:"
	echo "==> chown -R BENUTZER:BENUTZER /opt/tor-browser-de"
	echo ""
}

pre_upgrade() {
	# To prevent file conflict errors while upgrading
	rm -rf /opt/tor-browser-de/Data/profile/
}

post_upgrade() {
	post_install
}

post_remove() {
	# Remove files created by tor-browser
	rm -rf /opt/tor-browser-de
}

