# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=photoqt
pkgver=1.1
pkgrel=1
pkgdesc="Fast and highly configurable image viewer with a simple and nice interface."
arch=('i686' 'x86_64')
url="http://photoqt.org/"
license=('GPL2')
depends=('qt5-imageformats' 'qt5-multimedia')
makedepends=('cmake')
optdepends=('exiv2' 'graphicsmagick')
install=$pkgname.install
source=(http://photoqt.org/pkgs/$pkgname-$pkgver.tar.gz)
md5sums=('87938a354abf907700a5b1a20bc9a34b')

build() {
  cd $srcdir/$pkgname-$pkgver
  # If you want to build PhotoQt with more features(exiv2 and graphicsmagick), adapt next line(change OFF -> ON for enabling feature).
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DEXIV2=OFF -DGM=OFF        
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}