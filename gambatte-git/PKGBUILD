# Maintainer: Cedric Mathieu <me.xenom[at]gmail.com>

pkgname=gambatte-git
pkgver=20130301
pkgrel=1
pkgdesc="An accuracy-focused Game Boy Color emulator"
arch=('i686' 'x86_64')
url="https://github.com/sinamas/gambatte"
license=('GPL')
depends=('gcc-libs' 'sdl' 'zlib')
optdepends=('gambatte-qt: Qt4 frontend')
makedepends=('git' 'scons')
provides=('gambatte')
conflicts=('gambatte')
source=()
md5sums=()

_gitroot="git://github.com/sinamas/gambatte.git"
_gitname="gambatte"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  for i in libgambatte gambatte_sdl; do
    cd $i
    scons CXXFLAGS="${CXXFLAGS}" || return 1
    cd ..
  done
}

package() {
  install -Dm755 gambatte-build/gambatte_sdl/gambatte_sdl "$pkgdir"/usr/bin/gambatte
  install -Dm644 gambatte-build/libgambatte/libgambatte.a "$pkgdir"/usr/lib/libgambatte.a
}

# vim:set ts=2 sw=2 et:
