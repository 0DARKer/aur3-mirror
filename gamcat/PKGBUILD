# Contributor: Aakos <scooterbr at gmail dot com>

pkgname="gamcat"
pkgver="0.0.57"
pkgrel=1
debrel=1
pkgdesc="Gamcat - CD/DVD catalog software"
arch=('any')
url="http://www.kde-apps.org/content/show.php/GamCat?content=100682"
license=('GPL')
depends=('gambas2-runtime' 'gambas2-gb-qt' 'gambas2-gb-form' 'gambas2-gb-db' 'gambas2-gb-form-dialog' 'gambas2-gb-qt-ext' 'gambas2-gb-qt-kde' 'gambas2-gb-sdl-sound' 'gambas2-gb-db-sqlite3')
optdepends=('cdrkit' 'imagemagick' 'unrar' 'unzip' 'unace' 'unarj')
source=("http://downloads.sourceforge.net/project/gamcat/gamcat-${pkgver}/gamcat_${pkgver}-${debrel}_all.deb")
md5sums=('1b87808baa905764e2a6ee626e016ea6')



build()
{
	cd ${srcdir}
	ar x ${pkgname}_${pkgver}-${debrel}_all.deb
	tar -zxf data.tar.gz
	mkdir ${pkgdir}/usr
	cd ${srcdir}/usr
	cp -r bin ${pkgdir}/usr
	cp -r share ${pkgdir}/usr
}