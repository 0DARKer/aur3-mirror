# Maintainer: Philippe Cherel <philippe.cherel at mayenne dot org>

pkgname=cec-firmware-upgrade
pkgver=0.2
pkgrel=r5_2
pkgdesc="Pulse-Eight's firmware upgrade program for the Pulse-Eight USB-CEC adapter"
arch=('i686' 'x86_64')
url="https://github.com/Pulse-Eight/libcec"
license=('GPL')
provides=('cec-firmware-upgrade')

[ "$CARCH" = i686   ] && source=(http://packages.pulse-eight.net/ubuntu/pool/stable/dists/precise/$pkgname"_"$pkgver-r5_i386.deb)
[ "$CARCH" = x86_64 ] && source=(http://packages.pulse-eight.net/ubuntu/pool/stable/dists/precise/$pkgname"_"$pkgver-r5_amd64.deb)
[ "$CARCH" = i686   ] && md5sums=('debd6a5d745c5aefbc337109adbceb29')
[ "$CARCH" = x86_64 ] && md5sums=('f1cb1a4c922773520e9fe833fc031a3e')

package() {
  [ "$CARCH" = i686   ] && ar x "${srcdir}/$pkgname"_"$pkgver-r5_i386.deb"
  [ "$CARCH" = x86_64 ] && ar x "${srcdir}/$pkgname"_"$pkgver-r5_amd64.deb"

  tar -zxf "${srcdir}/data.tar.gz"
  cp -r "${srcdir}/usr/" "${pkgdir}"
}
