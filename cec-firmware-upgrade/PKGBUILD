# Maintainer: Philippe Cherel <philippe.cherel at mayenne dot org>

pkgname=cec-firmware-upgrade
pkgver=0.2
pkgrel=1
pkgdesc="Pulse-Eight's firmware upgrade program for the Pulse-Eight USB-CEC adapter"
arch=('i686' 'x86_64')
url="https://github.com/Pulse-Eight/libcec"
license=('GPL')
provides=('cec-firmware-upgrade')

[ "$CARCH" = i686   ] && source=(http://packages.pulse-eight.net/ubuntu/pool/stable/dists/lucid/$pkgname"_"$pkgver-2_i386.deb)
[ "$CARCH" = x86_64 ] && source=(http://packages.pulse-eight.net/ubuntu/pool/stable/dists/lucid/$pkgname"_"$pkgver-2_amd64.deb)
[ "$CARCH" = i686   ] && md5sums=('b49971f41ca658a9e42f20bd81b44e75')
[ "$CARCH" = x86_64 ] && md5sums=('89cd6cedfed6ca5bd622047297b69125')

package() {
  [ "$CARCH" = i686   ] && ar x "${srcdir}/$pkgname"_"$pkgver-2_i386.deb"
  [ "$CARCH" = x86_64 ] && ar x "${srcdir}/$pkgname"_"$pkgver-2_amd64.deb"

  tar -zxf "${srcdir}/data.tar.gz"
  cp -r "${srcdir}/usr/" "${pkgdir}"
}
