# Maintainer: Philippe Cherel <philippe.cherel at mayenne dot org>

pkgname=cec-firmware-upgrade
pkgver=0.3
pkgrel=1
pkgdesc="Pulse-Eight's firmware upgrade program for the Pulse-Eight USB-CEC adapter"
arch=('i686' 'x86_64')
url="https://github.com/Pulse-Eight/libcec"
license=('GPL')
provides=('cec-firmware-upgrade')

[ "$CARCH" = i686   ] && source=(http://packages.pulse-eight.net/ubuntu/pool/stable/dists/quantal/$pkgname"_"$pkgver"_"i386.deb)
[ "$CARCH" = x86_64 ] && source=(http://packages.pulse-eight.net/ubuntu/pool/stable/dists/quantal/$pkgname"_"$pkgver"_"amd64.deb)
[ "$CARCH" = i686   ] && md5sums=('c49377b3bb2b12723d52770ac44b5f54')
[ "$CARCH" = x86_64 ] && md5sums=('3a366270b7b4f3e9e3149c948a8d684b')

package() {
  [ "$CARCH" = i686   ] && ar x "${srcdir}/$pkgname"_"$pkgver"_"i386.deb"
  [ "$CARCH" = x86_64 ] && ar x "${srcdir}/$pkgname"_"$pkgver"_"amd64.deb"

  tar -zxf "${srcdir}/data.tar.gz"
  cp -r "${srcdir}/usr/" "${pkgdir}"
}
