# Contributor: Sebastien Piccand <sebcactus gmail com>
pkgname=eo
pkgver=1.0.1
pkgrel=5
pkgdesc="EO is a templates-based, ANSI-C++ compliant evolutionary computation library"
arch=('i686')
url="http://eodev.sourceforge.net/"
license=('LGPL')
conflicts=('galib')
source=(http://downloads.sourceforge.net/sourceforge/eodev/$pkgname-$pkgver.tar.bz2 gcc-4.3.patch)
md5sums=('79ac9bd4a0f1ad857845c8fd65418db1' 'b43c29b9b6b89d2eec620a54da0ce48b')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 < ../gcc-4.3.patch || return 1
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
