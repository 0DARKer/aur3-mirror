pkgname=gnome-raw-thumbnailer
pkgver=0.9
pkgrel=1
epoch=3
pkgdesc="This is a RAW file thumbnailer for GNOME."
url="http://localhost"
license=('GPL')
arch=('any')
depends=('raw-thumbnailer')
install=gnome-raw-thumbnailer.install
source=("gnome-raw-thumbnailer.install"
	"gnome-raw-thumbnailer.schemas"
	"gnome-raw-thumbnailer.xml")
md5sums=('8124298d1d3bd6436d59bbfb2b0fbce4'
	 '3321e809154e29ee10e7efc4f72e1c1f'
	 'e29d94ab02a05f77462b763b31b94c76')
build() {

	cd $startdir/src/

	mkdir -p $startdir/pkg/usr/share/mime/packages
	install -m644 $startdir/src/gnome-raw-thumbnailer.xml \
	$startdir/pkg/usr/share/mime/packages/

	mkdir -p $startdir/pkg/etc/gconf/schemas
        install -m644 $startdir/src/gnome-raw-thumbnailer.schemas \
        $startdir/pkg/etc/gconf/schemas/
}
