# Contributor: lolilolicon <(l[oi]){2}con@gmail.com>

pkgname=yajl-ruby
pkgver=0.7.8
pkgrel=2
pkgdesc="Ruby C bindings to Yajl, an extremely efficient streaming JSON parsing and encoding library."
arch=('i686' 'x86_64')
url="http://github.com/brianmario/yajl-ruby"
license=('MIT')
depends=('ruby')
source=(${pkgname}-${pkgver}.tar.gz::https://github.com/brianmario/yajl-ruby/tarball/${pkgver})
md5sums=('26a01fe7da839958500c9157608325df')

build() {
  cd "$srcdir"/*yajl-ruby*

  mkdir -p "$pkgdir"/usr/lib/ruby/site_ruby/1.9.1/
  cd lib
  cp -a * "$pkgdir"/usr/lib/ruby/site_ruby/1.9.1/
  cd ../ext
  ruby extconf.rb
  make
  make DESTDIR="$pkgdir" install
}
