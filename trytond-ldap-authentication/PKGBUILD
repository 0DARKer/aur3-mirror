# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-ldap-authentication
_pkgname=trytond_ldap_authentication
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The ldap_authentication module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-ldap-connection>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("5860928e85f00a3517e1f03ed28165c2")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}