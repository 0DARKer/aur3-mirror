pkgname='geomyidae'
pkgver=0.16
pkgrel=3
arch=('i686' 'x86_64')
url="http://www.r-36.net/src/$pkgname/"
source=("http://www.r-36.net/src/$pkgname/$pkgname-$pkgver.tgz")
backup=("etc/conf.d/$pkgname")
pkgdesc='tiny, standalone gopherd written in C'
license='MIT'
md5sums=('321015612d0c6e2c7124510ed7b02fd7')

build() {
   cd geomyidae-$pkgver
   make
   make install DESTDIR=$pkgdir/ MANDIR=/usr/share/man/man8/
   install -Dm755 rc.d/Archlinux.rc.d   $pkgdir/etc/rc.d/geomyidae
   install -Dm644 rc.d/Archlinux.conf.d $pkgdir/etc/conf.d/geomyidae
}

