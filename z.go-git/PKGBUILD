# Maintainer: Bastien Dejean <baskerville@lavabit.com>

_pkgname=z.go
pkgname=${_pkgname}-git
pkgver=0.1
pkgrel=1
pkgdesc='Wu wei terminal directory jumping'
arch=('i686' 'x86_64')
url="https://github.com/baskerville/${_pkgname}"
license=('custom:Unlicense')
makedepends=('git' 'go')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
source=("git://github.com/baskerville/${_pkgname}.git")
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/$_pkgname"
    git describe --always | tr '-' 'z'
}

build() {
    cd "$srcdir/$_pkgname"
    go build z.go
}

package() {
    cd "$srcdir/$_pkgname"
    mkdir -p "${pkgdir}/usr/bin"
    cp -p z "${pkgdir}/usr/bin"
    mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"
    cp -p LICENSE "${pkgdir}/usr/share/licenses/${pkgname}"
}
