pkgname=wine-chs
pkgver=1.1.13
pkgrel=1
pkgdesc="Wine with Chinese Charset Hack,can be useed for baidu hi and QQ, etc."
url="http://www.winehq.com"
arch=('i686')
license=('LGPL')
depends=('freetype2' 'fontconfig' 'libjpeg' 'libungif' 'alsa-lib' 'glut' 'libldap' 'libxslt' 'lcms' 'libxxf86dga' 'freeglut' \
         'libxinerama' 'libxcursor' 'libxrandr' 'libxrender' 'libxdamage')
makedepends=('alsa-lib' 'sane' 'fontforge' 'flex' 'bison' 'gcc34')
provides=('wine')
replaces=('wine')
source=(http://ibiblio.org/pub/linux/system/emulators/wine/wine-$pkgver.tar.bz2)
md5sums=('e505e6c9792b453b576bfba17300b811')

build() {
  export CFLAGS="-march=i686 -O2 -pipe"
  export CXXFLAGS="-march=i686 -O2 -pipe"
  export CC=/usr/bin/gcc-3.4
  export CXX=/usr/bin/g++-3.4
  cd $startdir/src/wine-$pkgver
  patch dlls/gdi32/freetype.c < $startdir/freetype.patch || return 1
  ./configure --prefix=/usr --sysconfdir=/etc --with-x
  make depend || return 1
  make || return 1
  make prefix=$pkgdir/usr install || return 1
  mkdir -p $pkgdir/etc/wine

}
