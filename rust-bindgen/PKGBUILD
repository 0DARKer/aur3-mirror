pkgname=rust-bindgen
pkgver=0.10
pkgrel=2
pkgdesc="Binding generator for rust language"
arch=('i686' 'x86_64')
url="https://github.com/crabtw/rust-bindgen"
license=('BSD')
makedepends=('rust')
source=("https://github.com/crabtw/rust-bindgen/archive/${pkgver}.tar.gz")
sha512sums=('89970e57aa55f35612869cf378a3ddbfcd4b63158e4374ac4ee592901b6ba5b63fd79e178902c0b2d03c9308b3a80dfdeafe7633f26a24924a425815f0c78ee4')
package() {
  cd "$srcdir/$pkgname-$pkgver"
  rustc bindgen.rs
  install -D bindgen "$pkgdir/usr/bin/bindgen"
}
