# Maintainer: aaditya      aaditya_gnulinux@zoho.com

pkgname=pdf2img-git
_gitname=pdf2png
pkgver=1
pkgrel=1
pkgdesc="Converts PDF books to PNG, JPG, and other image formats."
url="https://github.com/wifiextender/pdf2png"
_gitroot=https://github.com/wifiextender/pdf2png
arch=('any')
license=('GPL')
depends=('python' 'ghostscript' 'python-gobject' 'pywebkitgtk')
makedepends=('git')
conflicts=('pdf2img')
source=("https://github.com/wifiextender/pdf2png.git")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"
  echo "0.$(git rev-list --count HEAD).$(git describe --always)"
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "${srcdir}/${_gitname}"
  install -Dm755 "pdf2img.py" "${pkgdir}/usr/bin/pdf2img"
  install -Dm644 "img/pdf2img_icon.png" "${pkgdir}/usr/share/icons/pdf2img_icon.png"
  install -Dm644 "img/Pdf2img.desktop" "${pkgdir}/usr/share/applications/Pdf2img.desktop"
}

# vim:set ts=2 sw=2 et:
