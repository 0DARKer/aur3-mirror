# Maintainer: Gilbert Kennen <gilbert firewatcher org>
pkgname=elixir-git
pkgver=20140418
pkgrel=1
pkgdesc="a functional meta-programming aware language built on top of the Erlang VM - current git master"
url="http://elixir-lang.org"
arch=('any')
license=('Apache' 'custom:EPL')
depends=('erlang')
makedepends=('git')
provides=('elixir')
conflicts=('elixir')
replaces=()
backup=()
source=()
md5sums=()
_gitroot="git://github.com/elixir-lang/elixir.git"
_src_files_dir="elixir-lang-elixir"

prepare() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_src_files_dir"
  fi

  msg "GIT checkout done or server timeout"
}

build() {
  cd "${srcdir}/${_src_files_dir}"*
  make
}

check() {
  cd "${srcdir}/${_src_files_dir}"*
  make test_erlang
} 

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}/usr/share/licenses/${pkgname}"
  cd "${srcdir}/${_src_files_dir}"*
  cp {LEGAL,LICENSE} "${pkgdir}/usr/share/licenses/${pkgname}"
  mkdir -p "${pkgdir}/usr/lib/elixir"
  cp -r "bin" "${pkgdir}/usr/lib/elixir"
  for D in `ls -F lib/ | grep \/$`
  do
    mkdir -p "${pkgdir}/usr/lib/elixir/lib/${D}"
    cp -r lib/${D}/ebin "${pkgdir}/usr/lib/elixir/lib/${D}"
  done
  mkdir -p "${pkgdir}/usr/bin"
  rm ${pkgdir}/usr/lib/elixir/bin/*.bat
  ln -sr ${pkgdir}/usr/lib/elixir/bin/* "${pkgdir}/usr/bin"
}
