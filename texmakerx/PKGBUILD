pkgname=texmakerx
pkgver=2.0
pkgrel=1
pkgdesc="Fork of the LaTeX IDE TexMaker. Gives you an environment where you can easily create and manage LaTeX documents."
arch=('i686' 'x86_64')
url="http://texmakerx.sourceforge.net/"
license=('GPL')
depends=('poppler-qt')

source=(http://downloads.sourceforge.net/project/texmakerx/texmakerx/TexMakerX%202.0.0/${pkgname}-${pkgver}.tar.gz)
md5sums=('e165b1c5876fcf9a3ac47758fb5eb730')

build() {
    cd $srcdir/$pkgname-$pkgver
    qmake texmakerx.pro
    make || return 1
    make install INSTALL_ROOT="$pkgdir"
}
