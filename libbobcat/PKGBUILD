pkgname=libbobcat
pkgver=2.09.02
pkgrel=3
pkgdesc="(Brokken's Own Base Classes And Templates) library"
arch=('i686')
url="http://bobcat.sourceforge.net"
license=('GPL')
depends=()
makedepends=(icmake )
optdepends=()
source=(http://jaist.dl.sourceforge.net/project/bobcat/bobcat/${pkgver}/bobcat_${pkgver}.orig.tar.gz)

build() {
  cd "$srcdir/bobcat-${pkgver}"
  echo -e "n\nn\nn\nn"| ./build libraries
}

package() {
  cd "$srcdir/bobcat-${pkgver}"
  mkdir -p ${pkgdir}/usr/lib
  mkdir -p ${pkgdir}/usr/include/bobcat

  cp -r tmp/lib/* ${pkgdir}/usr/lib
  cp -r tmp/bobcat/ ${pkgdir}/usr/include/
}

# vim:set ts=2 sw=2 et:
md5sums=('d1133e80f54d538fbece42deda888190')
