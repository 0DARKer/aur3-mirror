# Contributor: Richard Murri <admin@richardmurri.com>
pkgname=nxproxy
pkgver=3.4.0_2
pkgrel=1
pkgdesc="NX proxy"
arch=(i686 x86_64)
url="http://www.nomachine.com"
license=('GPL')
depends=(nxcomp gcc-libs)
groups=('x2go' 'alts')
source=(http://64.34.161.181/download/${pkgver%%_*}/sources/${pkgname}-${pkgver//_/-}.tar.gz)
md5sums=('95ce93520d463a3d18cdd5d19c321e85')

build() {
  cd $srcdir/$pkgname

  # adjust include paths
  find ./ -type f | xargs sed -i 's!#include "NX\.h"!#include <nxcomp/NX.h>!g'

  ./configure --prefix=/usr
  make || return 1

  install -D -m755 nxproxy $pkgdir/usr/bin/nxproxy
}

