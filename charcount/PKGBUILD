pkgname=charcount
pkgver=0.1
pkgrel=1
pkgdesc="Simple CLI utility to count the number of characters in a string."
arch=('i686' 'x86_64')
url="http://terra-byte.org/"
license=('GPL3')
source=(charcount.cpp)
md5sums=('0558f0a042229d74eb600501e692d694')

build() {
	cd $srcdir
	mkdir -p $pkgdir/usr/bin/
	g++ -o $pkgdir/usr/bin/$pkgname charcount.cpp
}
