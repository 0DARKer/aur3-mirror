# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-enable-svn
pkgver=25988
pkgrel=1
pkgdesc="Drawing and interaction packages."
arch=('i686' 'x86_64')
url="http://code.enthought.com/projects/enable"
license=('BSD')
depends=('python2' 'python-numpy>=1.1' 'python-reportlab' 'libxt' 'libxtst'
         'python-ets-enthoughtbase-svn' 'python-ets-traits-svn'
         'python-ets-traitsgui-svn')
makedepends=('subversion' 'gcc>=3.4' 'pyrex>=0.9.8'
         'swig>=1.3.31' 'python2-distribute')
conflicts=('python-enthought-enable')
options=(!emptydirs)

_svnmod=Enable
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

