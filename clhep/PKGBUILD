# Maintainer: Thomas Dziedzic < gostrc at gmail >
# Contributor: Sebastian Voecking <voeck@web.de>

pkgname=clhep
pkgver=2.1.0.1
pkgrel=1
pkgdesc='A Class library for High Energy Physics'
arch=('i686' 'x86_64')
url="http://proj-clhep.web.cern.ch/"
license=('unknown')
source=("http://proj-clhep.web.cern.ch/proj-clhep/DISTRIBUTION/tarFiles/${pkgname}-${pkgver}.tgz")
md5sums=('dadfbe2c94a3f644cd085489c36b1bfd')

build() {
  cd ${pkgver}/CLHEP

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${pkgver}/CLHEP

  make DESTDIR=${pkgdir} install
}
