# Maintainer: Luis Sarmiento < lgsarmientop@unal.edu.co >
# Contributor: Sebastian Voecking <voeck@web.de>

pkgname=clhep
pkgver=2.1.2.0
pkgrel=1
pkgdesc='A Class library for High Energy Physics'
arch=('i686' 'x86_64')
makedepends=('cmake>=2.6')
url="http://proj-clhep.web.cern.ch/"
license=('GPL3')
source=("http://proj-clhep.web.cern.ch/proj-clhep/DISTRIBUTION/tarFiles/${pkgname}-${pkgver}.tgz")
md5sums=('05fcf105cb9839e24fee58b7fc2878bb')

build() {
	[ -d build ] && rm -rf build
	mkdir build
	cd build
  	cmake ../${pkgver}/CLHEP -DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	  cd build
	  make DESTDIR="${pkgdir}" install
	  cd ..
	  install -Dm644 ${pkgver}/CLHEP/COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}