# Maintainer: Alistair Dutton <kelveden at gmail.com>

pkgname=eclipse-checkstyle
pkgver=5.4.1
_pkgver_date=201109192037
pkgrel=1
pkgdesc="Checkstyle plugin for Eclipse"
arch=('any')
url="http://eclipse-cs.sourceforge.net/"
license=('LGPL')
depends=('eclipse')
optdepends=()
source=(http://sourceforge.net/projects/eclipse-cs/files/Eclipse%20Checkstyle%20Plug-in/${pkgver}/net.sf.eclipsecs-updatesite-${pkgver}.${_pkgver_date}-bin.zip/download)
md5sums=('5f99b6dbc7920965dd608b0699695c5f')

build() {
  _dest=${pkgdir}/usr/share/eclipse/dropins/${pkgname/eclipse-}/eclipse

  cd ${srcdir}

  # Features
  find find features -type f \( -iname "*.jar" ! -iname "*migration*" \) | while read _feature ; do
    if [[ ${_feature} =~ (.*\.jar$) ]] ; then
      install -dm755 ${_dest}/${_feature%*.jar}
      cd ${_dest}/${_feature/.jar}
      jar xf ${srcdir}/${_feature} || return 1
    else
      install -Dm644 ${_feature} ${_dest}/${_feature}
    fi
  done

  # Plugins
  find plugins -type f \( -iname "*.jar" ! -iname "*migration*" \) | while read _plugin ; do
    install -Dm644 ${_plugin} ${_dest}/${_plugin}
  done
}
