# Contributor: BlackEagle < ike DOT devolder AT gmail DOT com >
pkgname=jslint
pkgver=0.1.6
pkgrel=3
pkgdesc="Command-line JSLint, installed through npm"
arch=(any)
url="https://github.com/reid/node-jslint"
license=('Custom BSD')
depends=(nodejs)
makedepends=(git)
source=($pkgname-$pkgver.tgz::https://github.com/reid/node-jslint/tarball/v$pkgver)
noextract=()
sha256sums=("c7031e89acdb16aa3054992825c4b58587036cc6aebd74b2ce0b512bc991b26e")

package() {
  cd "$srcdir/reid-node-jslint-26ae90b" || exit 1
  npm install -g --prefix="$pkgdir/usr" 

  install -D -m644 "$srcdir/reid-node-jslint-26ae90b/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  chown -R root "$pkgdir/usr/lib/node_modules"
}

