pkgname=sharpfonts
pkgver=1
pkgrel=4
pkgdesc="Display sharp and clear fonts on Linux and Unix like on Windows XP."
url="http://tuntis.net/files"
license=("BSD")
depends=('ttf-ms-fonts' 'fontconfig' 'freetype2')
install="sharpfonts.install"
source=($url/$pkgname.tbz)
md5sums=('44546ae3e5a50222acd24ea26e33a3ee')
arch=('any')

build() {
	echo not a make package
}

package() {
	mkdir -p $pkgdir/etc/fonts
	tar xvjpf $pkgname.tbz -C $pkgdir/etc/fonts/
}
