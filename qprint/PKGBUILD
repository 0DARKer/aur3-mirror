# Contributor: Michael Blum <michaeldblum@earthlink.net>
pkgname=qprint
pkgver=1.0
pkgrel=1
pkgdesc="Quoted-Printable format (RFC1521) encode / decode."
url="http://www.fourmilab.ch/webtools/qprint/"
groups=
provides=
depends=(glibc)
makedepends=()
conflicts=()
replaces=()
backup=()
install=()
source=(http://www.fourmilab.ch/webtools/qprint/$pkgname-$pkgver.tar.gz)
md5sums=('6dc7931376370d5be9223d0d43bec7d0')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  [[ -d $startdir/pkg/usr/bin ]] || mkdir -p $startdir/pkg/usr/bin
  [[ -d $startdir/pkg/usr/man/man1 ]] || mkdir -p $startdir/pkg/usr/man/man1
  make prefix=$startdir/pkg/usr install
}
