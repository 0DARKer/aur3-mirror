# Contributor: pumbur <pumbur@ya.ru>

pkgname=gtk-theme-shiki-colors-flat
pkgver=1
pkgrel=1
pkgdesc="Shiki Colors Flat"
arch=('any')
url="http://spktkpkt.deviantart.com/art/Shiki-Colors-Flat-130378438"
license=('GPL')
depends=('gtk-engine-murrine' 'gnome-colors-icon-theme')
source=(http://fc00.deviantart.net/fs46/f/2009/202/1/8/Shiki_Colors_Flat_by_spktkpkt.zip)
md5sums=('af9dfc95b0cc56d316b2d8e3a867b20d')

build() {
  mkdir -p $pkgdir/usr/share/themes
  cd $pkgdir/usr/share/themes

  for i in Brave-Flat Colors-Flat-Metacity Dust-Flat Human-Flat Illustrious-Flat Noble-Flat Tribute-Flat Wine-Flat Wise-Flat
do
   tar -zxvf $srcdir/Shiki-$i.tar.gz
done
}

