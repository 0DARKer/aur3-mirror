# Contributor: Samir Faci <csgeek@archlinux.us>

pkgname=qxmpp
pkgver=0.5.0
pkgrel=1
pkgdesc='A xmpp client library based on Qt & C++'
arch=('i686' 'x86_64')
url='http://code.google.com/p/qxmpp/'
license=('LGPL 2.1')
depends=('qt>=4.5')
conflicts=('qxmpp-git' 'qxmpp-leechcraft' 'qxmpp-leechcraft-git')
source=('http://qxmpp.googlecode.com/files/qxmpp-0.5.0.tar.gz')
md5sums=('287e2f8cbfc8c728c783e373bb4e07f4')
 
build() {
	cd "$srcdir/$pkgname-$pkgver/"
	[ -d build ] || mkdir build && cd build
	qmake PREFIX=/usr ..
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver/build"
	make INSTALL_ROOT="$pkgdir" install
}
