# Contributor: Harald Ersch <harald@ersch.ro>
# Maintainer: Edvinas Valatka <edacval@gmail.com>
pkgname=drbd-userland
pkgver=8.3.10
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="A userland tools for drbd block device which is designed to build high availability clusters." 
url="http://www.drbd.org"
license=('GPL')
options=(!distcc !makeflags)
makedepends=('glibc')
depends=('kernel26>=2.6.36' 'kernel26-headers>=2.6.36' 'bash-completion')
replaces=('drbd')
source=(http://oss.linbit.com/drbd/8.3/drbd-$pkgver.tar.gz)
md5sums=('7d80edc2da10de5bfffe0ca9e9996fed')
backup=('etc/drbd.conf')
install='drbd.install'
build() {
  cd $srcdir/drbd-$pkgver
  ./configure --prefix=/usr --localstatedir=/var --sysconfdir=/etc --with-km=no --with-initdir=/etc/rc.d
  make DESTDIR=$pkgdir clean all install || return 1
  sed -i -e 's#/etc/init.d/drbd#/etc/rc.d/drbd#' $pkgdir/etc/rc.d/drbd || return 1
  chmod 1777 $pkgdir/var/lock 
}
