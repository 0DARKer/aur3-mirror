# $Id$

pkgname=ugit-git
pkgver=20080117
pkgrel=1
pkgdesc="PyQt4 git frontend"
arch=(i686 x86_64)
url="http://ugit.justroots.com/"
license=('GPL')
groups=('base-devel')
depends=('pyqt4')
makedepends=('git')
source=()
md5sums=()

_gitroot="git://repo.or.cz/ugit.git"
_gitname="ugit"
build() {
  cd $startdir/src
  msg "Connecting to git server...."
  if [ -d $startdir/src/$_gitname ]
  then
    cd $_gitname && git-pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  msg "git checkout done or server timeout"
  msg "Starting make..."

  cp -r $startdir/src/$_gitname $startdir/src/$_gitname-build
  cd $startdir/src/$_gitname-build

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

