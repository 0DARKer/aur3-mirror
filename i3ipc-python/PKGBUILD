# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=i3ipc-python
_gitname=i3ipc-python
pkgver=0.1.1
pkgrel=1
epoch=
pkgdesc="An improved Python library to control i3wm"
arch=('i686' 'x86_64')
url="https://github.com/acrisci/i3ipc-python"
license=('GPL3')
groups=()
depends=('i3ipc-glib>=0.1.1' 'python-gobject')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git://github.com/acrisci/i3ipc-python.git")
noextract=()
md5sums=("SKIP")

build() {
    cd "$srcdir/$_gitname"
    git checkout "v$pkgver"
    ./autogen.sh PREFIX=/usr
    make
}

package() {
    cd "$srcdir/$_gitname"
	make DESTDIR="$pkgdir/" install
}
