# Maintainer: Tony Crisci <tony@dubstepdish.com>
pkgname=i3ipc-python
_gitname=i3ipc-python
pkgver=2014.03.08.ga13ec8b
pkgrel=1
epoch=
pkgdesc="An improved Python library to control i3wm"
arch=('i686' 'x86_64')
url="https://github.com/acrisci/i3ipc-python"
license=('GPL3')
groups=()
depends=('i3ipc-glib' 'python-gobject')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git://github.com/acrisci/i3ipc-python.git")
noextract=()
md5sums=("SKIP")

pkgver() {
    cd "${srcdir}/${_gitname}"
    git log -1 --format="%cd.g%h" --date=short | sed 's/-/./g'
}

build() {
    cd "$srcdir/$_gitname"
    ./autogen.sh PREFIX=/usr
    make
}

package() {
    cd "$srcdir/$_gitname"
	make DESTDIR="$pkgdir/" install
}
