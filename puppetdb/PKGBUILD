# Puppetdb: Installer: Arch
# Maintainer: Niels Abspoel <aboe76 (at) Gmail (dot) com>

# RC style, reserved for later use
#pkgname=puppetdb
#_rc=8
#_pkgver=3.0.0
#pkgver=${_pkgver}_rc${_rc}

pkgname=puppetdb
pkgver=1.1.1
pkgrel=1
pkgdesc="Puppet data warehouse; it manages storage and retrieval of all platform-generated data"
arch=("any")
url="http://puppetlabs.com/projects/puppetdb/"
license=("APACHE")
depends=("ruby" "ruby-facter" "puppet" "leiningen" "jdk7-openjdk" "git" "logrotate")
options=(emptydirs)
provides=("puppetdb")
conflicts=()
install=puppetdb.install
backup=('etc/puppetdb/conf.d/config.ini' 'etc/puppetdb/conf.d/database.ini' 'etc/puppetdb/conf.d/jetty.ini' 'etc/puppetdb/conf.d/repl.ini' 'etc/puppetdb/log4j.properties')
source=(http://apt.puppetlabs.com/pool/quantal/main/p/puppetdb/puppetdb_${pkgver//_/-}-${pkgrel}puppetlabs1_all.deb
	puppetdb.service
	puppetdb.systemd)
md5sums=('b7e3ed7e0564a61f41ddf20c235b556d'
	'4c112f131b1b77d10a68b95c5bd71757'
	'cb5683a1d63619600dc6b89f5f0a364d')

build() {
  cd "$srcdir"

  bsdtar xf "$srcdir/data.tar.gz"

}
package () {
# move deb provided dirs to right place
  cp -dpr --no-preserve=ownership "$srcdir/usr" "$pkgdir"
  cp -dpr --no-preserve=ownership "$srcdir/etc" "$pkgdir"
  cp -dpr --no-preserve=ownership "$srcdir/var" "$pkgdir"

# Systemd file
  install -Dm 644 $srcdir/puppetdb.systemd $pkgdir/etc/conf.d/puppetdb
  install -Dm 644 $srcdir/puppetdb.service $pkgdir/usr/lib/systemd/system/puppetdb.service

# adjust ownerships (our named user will be uid/gid 40/40)
  chmod 755 $pkgdir/etc/puppetdb
  chown -R 53:53 $pkgdir/etc/puppetdb/*
  chmod -R 640 $pkgdir/etc/puppetdb/*
  chmod -R ug+X $pkgdir/etc/puppetdb/*
  chgrp 53 $pkgdir/var/log/puppetdb
  chmod 755 $pkgdir/var/log/puppetdb
  chown -R 53:53 $pkgdir/var/log/puppetdb
}
# vim: set ft=sh ts=2 sw=2 et:
