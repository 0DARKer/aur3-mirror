pkgname=xorg-fonts-jmk
pkgver=3.0
pkgrel=18
arch=('any')
url=('http://www.jmknoble.net/fonts/')
license=('GPL2')
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="custom fonts"
source=($pkgname-$pkgver-$pkgrel.tar.gz)
install=$pkgname.install
md5sums=('aa9e1a8ca10d9a3527082feaf591de21')

build()
{
	  mkdir -p $startdir/pkg/usr/share/fonts/local
	  cp $startdir/src/local/* $startdir/pkg/usr/share/fonts/local
}
