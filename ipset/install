# arg 1:  the new package version
# arg 2:  the old package version

post_install () {
  echo "****************************************************************"
  echo "This package build kernel module!"
  echo "You need to rebuild it everytime you update your kernel version."
  echo "****************************************************************"
}

post_upgrade() {
  post_install
}

