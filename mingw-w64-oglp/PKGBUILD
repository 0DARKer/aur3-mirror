# Daniel Kirchner <daniel at ekpyron dot org>
pkgname=mingw-w64-oglp
pkgver=0.0
pkgrel=1
pkgdesc="OpenGL wrapper for C++. (mingw-w64 symlinks)"
arch=('any')
license=('GPL')
url="http://github.com/ekpyron/oglp/"
depends=('mingw-w64-glm' 'oglp')

_targetarch64=x86_64-w64-mingw32
_targetarch32=i686-w64-mingw32

package() {
	mkdir -p $pkgdir/usr/$_targetarch32/include
	mkdir -p $pkgdir/usr/$_targetarch64/include
	ln -s ../../../usr/include/oglp $pkgdir/usr/$_targetarch32/include
	ln -s ../../../usr/include/oglp $pkgdir/usr/$_targetarch64/include
}
