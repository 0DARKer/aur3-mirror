#Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=libquvi-git
pkgver=20130112
pkgrel=1
pkgdesc="Cross-platform library for parsing flash media stream URLs. (GIT version)"
arch=('i686' 'x86_64')
url="http://quvi.sourceforge.net/"
license=('LGPL')
depends=('libquvi-scripts-git' 'curl' 'lua')
makedepends=('git')
provides=('libquvi')
conflicts=('libquvi')
options=('!libtool')

_gitroot="git://repo.or.cz/libquvi.git"
_gitname="libquvi"

build() {
  cd "${srcdir}"

  msg "Connecting to GIT server..."

  if [ -d "${_gitname}" ] ; then
    cd "${_gitname}" && git pull --depth=1
  else
    git clone --depth=1 "${_gitroot}"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -fr "${srcdir}/${_gitname}-build"
  cp -R "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  sed -e 's|LT_INIT()|AM_PROG_AR\nLT_INIT()|g' -e '/AC_PROG_CC/s|$|\nAM_PROG_CC_C_O|g' -i configure.ac

  sh autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_gitname}"-build
  make DESTDIR="${pkgdir}" install
}
