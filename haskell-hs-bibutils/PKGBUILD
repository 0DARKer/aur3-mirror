pkgrel=1
pkgver=0.1
pkgdesc="Haskell bindings to bibutils, the bibliography\nconversion utilities."
url="http://hackage.haskell.org/cgi-bin/hackage-scripts/package/hs-bibutils"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'bibutils-lib')
depends=('ghc' 'haskell-cabal' 'bibutils-lib')
options=('strip')
source=('http://hackage.haskell.org/packages/archive/hs-bibutils/0.1/hs-bibutils-0.1.tar.gz'
        "http://www.scripps.edu/~cdputnam/software/bibutils/bibutils_4.1_src.tgz")
install=haskell-hs-bibutils.install
md5sums=('19853ac691683a06569bd09ca864a963' '1827dd4293a42a0a0ddd44161abdf067')
build() {
    cd $startdir/src/hs-bibutils-0.1
    runhaskell Setup configure --prefix=/usr --extra-include-dirs=../bibutils_4.1/lib || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   $startdir/pkg/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh $startdir/pkg/usr/share/haskell/$pkgname/unregister.sh
    runhaskell Setup copy --destdir=$startdir/pkg || return 1
    install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/$pkgname/LICENSE || return 1
}
