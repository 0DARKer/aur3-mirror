#Maintainer: emanuele < newdna1510 at yahoo dot it>

pkgname=telepathy-qt4-git
pkgver=20100406
pkgrel=1
pkgdesc="A library for Qt-based Telepathy clients."
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org/"
license=('GPL')
depends=('qt' 'telepathy-farsight')
makedepends=('git' 'cmake')
conflicts=('telepathy-qt4')
provides=('telepathy-qt4')
source=()
md5sums=()

_gitroot="git://git.collabora.co.uk/git/telepathy-qt4.git"
_gitname="telepathy-qt4"


build() {
 

  # start building
  cd $startdir/src

 msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  ./autogen.sh --prefix=/usr || return 1
  ./configure --prefix=/usr --libexecdir=/usr/lib/telepathy \
        --disable-static	|| return 1
  make || return 1
  make DESTDIR="$pkgdir" install



}
