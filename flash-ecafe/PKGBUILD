# Contributor: nowahn < nowahn at yahoo dot fr >

pkgname=flash-ecafe
pkgver=0.44
pkgrel=2
pkgdesc="BIOS update for the Ecafe netbook from Hercules"
arch=(i686)
license=('custom')
groups=()
url="http://www.ecafe.hercules.com/fr/bdd/home/1"
depends=('coreutils' 'bash')
install=flash-ecafe.install
source=(flash-ecafe afulnx_32 EC_R044.rom)
md5sums=('14e32864a714dce6e7e334fba0bcac8a'
         'a5f5f59222de503c307dff5093e82204'
         '40b219e116272603061fb3ee469f123c')

build() {
  mkdir -p ${pkgdir}/usr/{bin,share/flash-ecafe}
  cp ${srcdir}/flash-ecafe ${pkgdir}/usr/bin
  cp ${srcdir}/{afulnx_32,EC_R044.rom} ${pkgdir}/usr/share/flash-ecafe
  chmod 500 ${pkgdir}/usr/{bin/flash-ecafe,share/flash-ecafe/afulnx_32}
  chmod 400 ${pkgdir}/usr/share/flash-ecafe/EC_R044.rom
}

