# Contributor: Rogier Koppejan <annoyingmessages :AT: gmail :DOT: com>

pkgname=geanyspell
pkgver=0.4
pkgrel=1
pkgdesc="Spellcheck plugin for Geany IDE"
arch=(i686 x86_64)
url="http://geany-plugins.sourceforge.net/spellcheck/"
license=("GPL2")
depends=('geany>=0.16' 'enchant')
install=$pkgname.install
source=(http://plugins.geany.org/spellcheck/spellcheck-$pkgver.tar.gz)
md5sums=('346517b013cd63f2ea48f1cb8a306ea9')

build() {
  cd $startdir/src/spellcheck-$pkgver
  ./configure --prefix=/usr || return 1
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
}

