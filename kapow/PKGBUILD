# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=kapow
pkgver=1.3.4
pkgrel=1
pkgdesc="Punch clock to track time spent on projects"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPLv3')
depends=('qt' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('02b3eee00aa563d2e923a53638c90212')
sha256sums=('d3739b4b47de9320c1af74955c4c0da6b9c1e3fba02beb996e7b9d9effe968f7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
