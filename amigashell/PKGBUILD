# Contributor: Erol V. Aktay <e.aktay@gmail.com>

pkgname=amigashell
pkgver=2.3
pkgrel=3
pkgdesc="A virtual console looking like Amiga's shell"
arch=('i686' 'x86_64')
url="http://gnu.ethz.ch/linuks.mine.nu/amiga/"
license="GPL"
# zgv and consolechars are optional dependencies
depends=()
install=('amigashell.install')
source=("http://gnu.ethz.ch/linuks.mine.nu/amiga/$pkgname-$pkgver.tar.gz")
md5sums=('0856d08083e37c6300bc37ae1f2fecd1')

build() {
  cd $startdir/src/$pkgname-$pkgver
  
  mkdir -p $startdir/pkg/usr/share/amigashell
  mkdir -p $startdir/pkg/usr/man/man1
  mkdir -p $startdir/pkg/usr/bin
  # uncomment the following line if you get zgv to work...
  #install -m 644 amigashell.png $startdir/pkg/usr/share/amigashell/
  install -m 644 amigashell.fnt $startdir/pkg/usr/share/amigashell/ || return 1
  install -m 644 amigashell.env $startdir/pkg/usr/share/amigashell/ || return 1
  install -m 644 amigashell.guru $startdir/pkg/usr/share/amigashell/ || return 1
  install -m 644 amigashell.1.gz $startdir/pkg/usr/man/man1/ || return 1
  install -m 755 amigashell amigashelld $startdir/pkg/usr/bin/ || return 1
}
