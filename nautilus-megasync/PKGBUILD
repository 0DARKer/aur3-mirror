# Maintainer: ValHue <vhuelamo at gmail dot com>
# https://github.com/ValHue/AUR-PKGBUILDs

pkgname="nautilus-megasync"
pkgver="1.0.30"
pkgrel="1"
pkgdesc="Upload your files to your Mega account from nautilus."
arch=('i686' 'x86_64')
url="https://mega.co.nz/#sync"
license=('custom:The Clarified Artistic License')
depends=('libnautilus-extension' 'megasync')
provides=("${pkgname}")
if [ "$CARCH" = "x86_64" ]; then
	_source_arch="amd64"
	md5sums=('0eca2669d25674784e242034375aed17')
elif [ "$CARCH" = "i686" ]; then
	_source_arch="i386"
	md5sums=('ca266702624fcbc9b0d0aa9f0b17f133')
fi
source=("https://mega.co.nz/linux/MEGAsync/Debian_7.0/${_source_arch}/${pkgname}_${pkgver}_${_source_arch}.deb")
install="${pkgname}.install"

build() {
	cd "${srcdir}"
	ar vx ${pkgname}_${pkgver}_${_source_arch}.deb
}

package() {
	cd "${srcdir}"
	tar -C "${pkgdir}" -xvzf data.tar.gz
	rm -rf ${pkgdir}/usr/src && rm -rf ${pkgdir}/usr/share/doc
}																																																																																																																																																																																																																																																																																																																																																																						
