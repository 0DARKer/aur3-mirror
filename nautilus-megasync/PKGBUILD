# Maintainer: ValHue <vhuelamo at gmail dot com>
# https://github.com/ValHue/AUR-PKGBUILDs

pkgname="nautilus-megasync"
pkgver="1.0.29"
pkgrel="1"
pkgdesc="Upload your files to your Mega account from nautilus."
arch=('i686' 'x86_64')
url="https://mega.co.nz/#sync"
license=('custom:The Clarified Artistic License')
depends=('libnautilus-extension' 'megasync')
provides=("${pkgname}")
install="${pkgname}.install"

_source_arch="i386"
[ "$CARCH" = "x86_64" ] && _source_arch="amd64"

source=("https://mega.co.nz/linux/MEGAsync/Debian_7.0/amd64/${pkgname}_${pkgver}_${_source_arch}.deb")
md5sums=('cee6a780bc14ba08d3d0cd46bb4ee86b')

[ "$CARCH" = "x86_64" ] && md5sums[0]='0c6350783b2cfa765b1d0b1aac8538c2'


build() {
	cd "${srcdir}"
	ar vx ${pkgname}_${pkgver}_amd64.deb
}

package() {
	cd "${srcdir}"
	tar -C "${pkgdir}" -xvzf data.tar.gz
	rm -rf ${pkgdir}/usr/src && rm -rf ${pkgdir}/usr/share/doc
}																																																																																																																																																																																																																																																																																																																																																																						
