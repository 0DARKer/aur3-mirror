# Maintainer: kevku <kevku@msn.com>
# Contributor: Rene PÃ¤rts <rene87@hot.ee>
pkgname=libp11
pkgver=0.2.7
pkgrel=1
pkgdesc="A library implementing a small layer on top of the PKCS11 API"
arch=('i686' 'x86_64')
url="http://www.opensc-project.org/libp11"
options=('!libtool')
license=('LGPL')
depends=('openssl')
source=("http://www.opensc-project.org/files/libp11/$pkgname-$pkgver.tar.gz")
md5sums=('564ab53ad7353903ddfdc15b153c44fb')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
