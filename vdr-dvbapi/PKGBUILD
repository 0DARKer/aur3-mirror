# Maintainer: David Spicer <azleifel at gmail dot com>

pkgname=vdr-dvbapi
_pluginname=vdr-plugin-dvbapi
pkgver=1.0.6
pkgrel=1
pkgdesc="A VDR plugin that acts as a bridge between VDR and OScam (vdr 2.0.x compatible)"
arch=('i686' 'x86_64')
url="https://github.com/manio/vdr-plugin-dvbapi"
license=('GPL2')
depends=('vdr>=1.7.43' 'vdr<2.1.0')
conflicts=('vdr-dvbapi-git')
source=(https://codeload.github.com/manio/${_pluginname}/zip/v${pkgver})
md5sums=('48201a56ef45fb573aaefd01ab8c6aeb')

build() {
  cd "$srcdir/$_pluginname-${pkgver}"

  make
}

package() {
  cd "$srcdir/$_pluginname-${pkgver}"

  make DESTDIR="$pkgdir/" install

  # Install documents
  install -d -m755 "$pkgdir/usr/share/doc/$pkgname"
  install -m644 FAQ "$pkgdir/usr/share/doc/$pkgname"
  install -m644 README "$pkgdir/usr/share/doc/$pkgname"
}
