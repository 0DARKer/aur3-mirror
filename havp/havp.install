pre_install() {
/bin/true
}

post_install() {
groupadd havp
useradd havp -g havp -s /bin/false
chown havp.havp /var/log/havp -R
chmod 770 /var/log/havp -R
chown havp.havp /var/tmp/havp -R
chmod 770 /var/tmp/havp -R
/bin/true
}

pre_upgrade() {
/bin/true
}

post_upgrade() {
/bin/true
}

pre_remove() {
/etc/rc.d/havp stop
/bin/true
}

post_remove() {
userdel havp
/bin/true
}

op=$1
shift
$op $*
