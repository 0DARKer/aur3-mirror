# Maintainer: Jason Begley <jayray@digitalgoat.com>

pkgname=havp
pkgver=0.90
pkgrel=1
pkgdesc="Http AnviVirus Proxy."
url='http://www.server-side.de/'
license="GPL"
depends=('clamav')
arch=('i686')
backup=(etc/havp/havp.conf)
	source=(http://www.server-side.de/download/$pkgname-$pkgver.tar.gz)
	md5sums=('7f3dc82f8472e2385869223bc0500431')
	build() {
		cd $startdir/src/$pkgname-$pkgver
		#./configure --prefix=/$startdir/pkg/ \
		./configure --prefix=/ \
	        make || return 1
		make DESTDIR=$startdir/pkg install
		cd $startdir
		install -D -m755 $startdir/src/$pkgname-$pkgver/etc/init.d/$pkgname $startdir/pkg/etc/rc.d/$pkgname
		perl -pi -e  's/usr\/local\///' $startdir/pkg/etc/rc.d/$pkgname
		mkdir $startdir/pkg/var/log/havp
		mkdir $startdir/pkg/var/tmp/havp
		touch $startdir/pkg/var/log/havp/access.log
		touch $startdir/pkg/var/log/havp/havp.log
		 install=$pkgname.install
		}
							      
