# Contributor: Jonathan Wiersma <archaur at jonw dot org>

pkgname=java3d
pkgver=1.5.2
pkgrel=2
pkgdesc="High-level constructs to create and manipulate 3D geometry"
arch=('i686' 'x86_64')
url="https://java3d.dev.java.net/"
license=('custom:"JRL"')
depends=('jre' 'libgl')
makedepends=('unzip')
_pkgname=j3d
if [ "$CARCH" = "i686" ] ; then
	_arch=i586
else
	_arch=amd64
fi
source=(http://download.java.net/media/java3d/builds/release/$pkgver/$_pkgname-1_5_2-linux-$_arch.zip)
if [ "$CARCH" = "i686" ] ; then
	md5sums=('0501179d850e6d05d30f2a3df861c2a5')
else
	md5sums=('541d5038c54bbec2f1d311dfc5f68890')
fi

build() {
	cd $srcdir/$_pkgname-1_5_2-linux-$_arch
	install -D -m644 LICENSE-Java3D-v1_5_2.txt $pkgdir/usr/share/licenses/$_pkgname/LICENSE

	mkdir -p $pkgdir/opt/java/jre
	cd $pkgdir/opt/java/jre
	unzip $srcdir/$_pkgname-1_5_2-linux-$_arch/j3d-jre.zip
}
