pkgname='perl-io-compress'
pkgver='2.030'
pkgrel='1'
pkgdesc="IO Interface to compressed data files/buffers"
arch=('any')
url='http://search.cpan.org/dist/IO-Compress'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-compress-raw-bzip2>=2.030' 'perl-compress-raw-zlib>=2.030')
provides=('perl-compress-zlib=2.030')
replaces=('perl-compress-zlib')
options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/P/PM/PMQS/IO-Compress-2.030.tar.gz')
md5sums=('1e6200ce12b4a87f24f110930260ebe8')

build() {
  DIST_DIR="${srcdir}/IO-Compress-2.030"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

