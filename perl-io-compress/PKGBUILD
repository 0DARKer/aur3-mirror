options=('!emptydirs')
depends=('perl-compress-raw-bzip2>=2.048' 'perl-compress-raw-zlib>=2.048')
makedepends=()
url='http://search.cpan.org/dist/IO-Compress'
source=('http://search.cpan.org/CPAN/authors/id/P/PM/PMQS/IO-Compress-2.048.tar.gz')
