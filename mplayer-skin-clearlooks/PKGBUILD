pkgname=mplayer-skin-clearlooks
pkgver=0.2
pkgrel=1
arch=('any')
pkgdesc="Additional Skin for the MPlayer"
depends=('mplayer-x')
url="http://www.mplayerhq.hu/"
md5sums=('a72d826aa9b94cdb7b3f504b52f547f5')
sha256sums=('cf8be1e1981d0f112fb7cd4c92f7a79250fc43a462405805e2d2f51d276839ff')
license=('GPL')

source=(http://www.mplayerhq.hu/MPlayer/skins/Clearlooks-1.2.tar.bz2)

build() {
  cd $startdir/src/
  mkdir -p $startdir/pkg/usr/share/mplayer/skins/default
  mv $startdir/src/Clearlooks/*  $startdir/pkg/usr/share/mplayer/skins/default
}
