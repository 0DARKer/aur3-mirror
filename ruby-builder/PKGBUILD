# Maintainer: TDY <tdy@gmx.com>

pkgname=ruby-builder
pkgver=2.1.2
pkgrel=1
pkgdesc="A simple Ruby library to create XML markup and data structures"
arch=('any')
url="http://rubyforge.org/projects/builder/"
license=('custom')
depends=('ruby')
source=(http://rubyforge.org/frs/download.php/21724/${pkgname/*-}-$pkgver.gem
        COPYING)
md5sums=('e96a525d9e0b42a2e2d5e77cbd02eb72'
         '3297ed4fef4ba0b51008fb0f4c02728b')

build() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e 'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" \
    ${pkgname/*-}-$pkgver.gem || return 1
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
