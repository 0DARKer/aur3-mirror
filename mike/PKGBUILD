# Maintainer: Alessandro Salmoiraghi <ale.salmo@gmail.com>
pkgname=mike
pkgver=0.1
pkgrel=2
pkgdesc="Mike is a time manager program that uses the Eisenhower method"
arch=('any')
url="http://sourceforge.net/projects/ike-python/"
license=('GPL')
depends=('gtk3' 'python>=3.2' 'python-gobject')
makedepends=()
optdepends=()
replaces=()
backup=()
options=()
source=(http://sourceforge.net/projects/ike-python/files/archlinux/$pkgname-$pkgver.tar.gz)
md5sums=('d3d4a344474735b55b04fa3bbebdbe9c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin/"
  mkdir -p "$pkgdir/usr/share/$pkgname/"
  install -m 755 "$pkgname" "$pkgdir/usr/bin/"
  install -m 644 $pkgname.glade "$pkgdir/usr/share/$pkgname/"
}
