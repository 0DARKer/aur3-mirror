# Maintainer: Valere Monseur <valere_monseur@hotmail.com>
# Contributor: Alexander Fehr <pizzapunk gmail com>

pkgname=ktsuss
pkgver=1.4
pkgrel=2
pkgdesc="Graphical version of su written in C and GTK+"
arch=('i686' 'x86_64')
url="http://developer.berlios.de/projects/ktsuss"
license=('BSD' 'GPL')
depends=('gtk2')
source=(http://download.berlios.de/ktsuss/ktsuss-$pkgver.tar.gz)
md5sums=('bad627cc5f5de08262fa4e60881ac30a')

build() {
  cd "$srcdir/ktsuss-$pkgver"

  ./configure --prefix=/usr --libexecdir=/usr/lib/ktsuss || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1

  install -D -m644 COPYING "$pkgdir/usr/share/licenses/ktsuss/COPYING" || return 1
}
