pkgname='perl-config-mvp'
pkgver='2.101650'
pkgrel='1'
pkgdesc="multivalue-property package-oriented configuration"
arch=('any')
url='http://search.cpan.org/dist/Config-MVP'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-moose' 'perl-params-util' 'perl-tie-ixhash' 'perl-try-tiny')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Config-MVP-2.101650.tar.gz')
md5sums=('b89fee1eae822fd75f61b7be932f0e40')

build() {
  DIST_DIR="${srcdir}/Config-MVP-2.101650"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

