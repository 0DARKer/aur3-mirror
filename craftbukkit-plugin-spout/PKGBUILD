pkgname=craftbukkit-plugin-spout
pkgver=737
pkgrel=2
pkgdesc="Spout plugin for CraftBukkit"
arch=(any)
url="http://www.spout.org"
license=('LGPL')
depends=('craftbukkit')
provides=('craftbukkit-plugin-spout-git')
conflicts=('craftbukkit-plugin-spout-git')
source=("http://get.spout.org/SpoutPlugin/$pkgver")
noextract=($pkgver)
md5sums=('80a7e1405df087c3f834fffd6ae168c7')

package() {
	mkdir -p "$pkgdir/opt/craftbukkit/plugins"
	cp "$srcdir/$pkgver" "$srcdir/SpoutPlugin.jar"
	install -m 644 "$srcdir/SpoutPlugin.jar" "$pkgdir/opt/craftbukkit/plugins"
}
