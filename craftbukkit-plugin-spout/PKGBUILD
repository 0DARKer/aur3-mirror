pkgname=craftbukkit-plugin-spout
pkgver=1360
pkgrel=1
pkgdesc="Spout plugin for CraftBukkit"
arch=(any)
url="http://www.spout.org"
license=("LGPL")
depends=("craftbukkit>=1.3.2r1.0")
provides=(craftbukkit-plugin-spout-git)
conflicts=(craftbukkit-plugin-spout-git)
source=("spoutplugin.jar::http://get.spout.org/SpoutPlugin/$pkgver")
noextract=("spoutplugin.jar")
md5sums=('9855be2dbd5f0b04d2c65e9eca2f8f7f')

package() {
	install -Dm644 "$srcdir/spoutplugin.jar" "$pkgdir/opt/craftbukkit/plugins/spoutplugin.jar"
}
