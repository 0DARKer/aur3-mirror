# Maintainer: Wido <widomaker2k7 [at] gmail [dot] com>

pkgname=nottetris2
pkgver=1
pkgrel=2
pkgdesc="Basically it's a little like tetris except with a twist."
arch=('any')
url="http://stabyourself.net/"
license=('CUSTOM')
depends=('love')
makedepends=()
replaces=()
#source=(http://stabyourself.net/dl.php?file=${pkgname}/${pkgname}-linux.zip ${pkgname} ${pkgname}.desktop )
source=(http://ompldr.org/vYTRreQ/${pkgname}-linux.zip ${pkgname} ${pkgname}.desktop )
md5sums=('28819e89a05318c8d69c0afef5bc96d9'
         'f806a800bc24afbd7a4d2d0b395c342b'
         'cbf0014e3832fca4a007c8255555b3be')

build() {
  cd ${srcdir}
  true
}
package() {
    # Install Data
    install -D -m755 ${srcdir}/"Not Tetris 2.love" $pkgdir/opt/${pkgname}/${pkgname}.love
    install -D -m644 ${srcdir}/"Not Readme".txt $pkgdir/opt/${pkgname}/"Not Readme".txt

    # Install Launcher
    install -D -m755 ${srcdir}/${pkgname} $pkgdir/usr/bin/${pkgname}

    # Install Desktop
    install -D -m644 ${srcdir}/${pkgname}.desktop \
        ${pkgdir}/usr/share/applications/${pkgname}.desktop


}
# vim:set ts=2 sw=2 et:
