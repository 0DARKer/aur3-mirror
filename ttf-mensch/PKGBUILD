pkgname=ttf-mensch
pkgver=0.1
pkgrel=1
url="http://robey.lag.net/2010/06/21/mensch-font.html"
license=('custom')
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="Mensch - A coding font"
arch=('any')
source=("http://robey.lag.net/downloads/mensch.ttf")
md5sums=('7454fa3f44dc5d982b7a98f3b3784451')
install=$pkgname.install

build() {
    mkdir -p $pkgdir/usr/share/fonts/TTF
    cp $srcdir/mensch.ttf $pkgdir/usr/share/fonts/TTF
}
