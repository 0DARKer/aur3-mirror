if [ -n "$1" ]
then
    if [ "$1" = `yaourt -Qqe | grep $1` ]
    then
        yaourt -Rs $1
    else
        yaourt -Qqe | grep $1 | awk '{print NR " " $0 }' && tput sgr0
        echo "Which package would you like to remove with all the dependences?(Type its number)"
        read number
        yaourt -Rs `yaourt -Qqe | grep $1 | sed -n "${number}p"`
    fi
else
  echo "Please, type the name(or the part of the name) of the package you want to remove."
  read pkg
  if [ "${pkg}" = `yaourt -Qqe | grep ${pkg}` ]
    then
        yaourt -Rs ${pkg}
    else
        yaourt -Qqe | grep ${pkg} | awk '{print NR " " $0 }' && tput sgr0
        echo "Which package would you like to remove with all the dependences?(Type its number)"
        read number
        yaourt -Rs `yaourt -Qqe | grep ${pkg} | sed -n "${number}p"`
        fi
fi