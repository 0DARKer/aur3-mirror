if [ -n "$1" ]
then
    yaourt -Qqe | grep $1 | awk '{print NR " " $0 }' && tput sgr0
    echo "Which package would you like to remove with all the dependences?(Type its number)"
    read number
    yaourt -Rs `yaourt -Qqe | grep $1 | sed -n "${number}p"`
else
  echo "Please, type the name(or the part of the name) of the package you want to remove." && tput sgr0
fi