# $Id: PKGBUILD,v 1.8 2006/07/06 20:57:57 andyrtr Exp $
# Maintainer: Arjan Timmerman<arjan@archlinux.org>
# Contributor: Manolis Tzanidakis
pkgname=libpam_mysql
pkgver=0.7RC1
pkgrel=4
pkgdesc="A PAM module to authenticate users against mysql."
arch=(i686 x86_64)
license=('GPL')
url="http://pam-mysql.sourceforge.net"
depends=('pam' 'libmysqlclient')
source=(http://easynews.dl.sourceforge.net/sourceforge/pam-mysql/pam_mysql-$pkgver.tar.gz)
md5sums=('6177183d7e98dc12f2e444c9fbd4f13c')

build() {
  cd $startdir/src/pam_mysql-$pkgver
  ./configure --prefix=/usr \
	--with-openssl \
	--with-cyrus-sasl \
	--with-pam-mods-dir=/lib/security
  make || return 1
  make DESTDIR=$startdir/pkg install
  rm $startdir/pkg/lib/security/*.la
}
