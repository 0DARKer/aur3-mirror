# Contributor: Guenther Wutz <admin@wutzara.de>

pkgname=mx
pkgver=1.1.7
pkgrel=1
pkgdesc="A GUI Toolkit based on Clutter"
arch=('i686' 'x86_64')
url="http://www.clutter-project.org"
license=('LGPL')
depends=('clutter' 'libxrandr' 'gtk2')
makedepends=('intltool')
source=("http://source.clutter-project.org/sources/$pkgname/1.1/$pkgname-$pkgver.tar.bz2")
sha256sums=('8fd621a69c7b03439fc2658fe7058c973c9cbcdf7fb78136c70c46899d1166e8')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr \
    --disable-introspection
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
