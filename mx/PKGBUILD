# Contributor: Guenther Wutz <admin@wutzara.de>

pkgname=mx
pkgver=1.1.9
pkgrel=1
pkgdesc="A widget toolkit using Clutter"
arch=('i686' 'x86_64')
url="http://www.clutter-project.org"
license=('LGPL')
depends=('clutter-gesture' 'libxrandr' 'gtk2' 'gobject-introspection'
        'startup-notification' 'dbus-glib')
makedepends=('intltool')
options=('!libtool')
source=("http://source.clutter-project.org/sources/$pkgname/1.1/$pkgname-$pkgver.tar.bz2")
sha256sums=('dafdd619bbc3d8e9a8ed76ffd08a171572111fa2cc6859a7602e65b2d91cf98c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
