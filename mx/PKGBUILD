# Maintainer: Guenther Wutz <admin@wutzara.de>

pkgname=mx
pkgver=1.1.0
pkgrel=1
pkgdesc="A GUI Toolkit based on Clutter"
arch=('x86_64')
url="http://www.clutter-project.org"
license=('LGPL')
depends=('clutter>=1.2.0' 'libxrandr>=1.2.0')
provides=(mx)
source=(http://source.clutter-project.org/sources/mx/1.1/$pkgname-$pkgver.tar.gz)
md5sums=('bfc63b1161c6e0a7ccf17dec36eea785')
build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --disable-introspection
  make -j2
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
