# Contributor: Abhishek Dasgupta <abhidg@gmail.com>
# Patch contributed by Gentoo maintainer

pkgname=ariadne
pkgver=1.3
pkgrel=1
pkgdesc="Compare protein sequences and profiles"
arch=(i686)
url="http://www.well.ox.ac.uk/ariadne/"
depends=('')
makedepends=('gcc')
source=(http://www.well.ox.ac.uk/ariadne/${pkgname}-${pkgver}.tar.Z 
		${pkgname}-${pkgver}-gcc4.patch)
md5sums=('240dc8b278a02b0fcdf56cd186d9b0ec'
		'85fea40cfa602b59790ef65c90cd23b6')

build() {
  cd ${startdir}/src/SRC-${pkgver}/
  patch < ${startdir}/${pkgname}-${pkgver}-gcc4.patch
  make || return 1
  mkdir -p ${startdir}/pkg/usr/bin
  cp ${startdir}/src/SRC-${pkgver}/Linux/ariadne  ${startdir}/pkg/usr/bin/
  cp ${startdir}/src/SRC-${pkgver}/Linux/prospero  ${startdir}/pkg/usr/bin/
}
