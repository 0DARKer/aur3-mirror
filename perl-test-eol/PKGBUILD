pkgname='perl-test-eol'
pkgver='0.9'
pkgrel='1'
pkgdesc="Check the correct line endings in your project"
arch=('any')
url='http://search.cpan.org/dist/Test-EOL'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/Test-EOL-0.9.tar.gz')
md5sums=('b3b4453d0caed2954a93585924ab15f2')

build() {
  DIST_DIR="${srcdir}/Test-EOL-0.9"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

