# Maintainer: Diego

pkgname=gtk-theme-config-git
pkgver=77.8dc1898
pkgrel=1
pkgdesc="A tool to configure GTK theme colors."
arch=('i686' 'x86_64')
url="https://github.com/satya164/gtk-theme-config"
license=('GPL3')
depends=('cairo' 'glib2' 'gtk3' 'hicolor-icon-theme' 'gsettings-desktop-schemas')
optdepends=('xfconf: support Xfce themes')
makedepends=('vala')
source=('git://github.com/satya164/gtk-theme-config.git')
provides=('gtk-theme-config')
install=gtk-theme-config.install
md5sums=(SKIP)

pkgver() {
  cd $provides
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
cd $provides
  make DESTDIR="$pkgdir/" install
}

