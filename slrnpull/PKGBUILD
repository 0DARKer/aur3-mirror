# Maintainer:   vando   <vando|SPAM.OFF|van.do>
pkgname=slrnpull
pkgver=0.9
pkgrel=9p1
pkgdesc="Pull a small newsfeed from an NNTP server (without install slrn)"
arch=('i686' 'x86_64')
url="http://slrn.sourceforge.net/"
license=('GPL')
depends=('slang')
source=("ftp://space.mit.edu/pub/davis/slrn/slrn-${pkgver}.${pkgrel}.tar.gz")
md5sums=('6cc8ac6baaff7cc2a8b78f7fbbe3187f')
sha256sums=('3a896f42b78c32252878fd291b21d6482d466921b68ab97f7d8cbadf4a76b533')

build() {
	
	cd ${srcdir}/slrn-${pkgver}.${pkgrel}
	./configure
	make || return 1
	make slrnpull || return 1

}

package() {

	install -Dm 755 ${srcdir}/slrn-${pkgver}.${pkgrel}/src/objs/slrnpull ${pkgdir}/usr/bin/slrnpull
	for _doc in README README.offline score SETUP slrnpull.conf slrnpull.sh 
	do
		install -Dm 644 ${srcdir}/slrn-${pkgver}.${pkgrel}/doc/slrnpull/${_doc} ${pkgdir}/usr/share/slrnpull/${_doc}
	done

}
