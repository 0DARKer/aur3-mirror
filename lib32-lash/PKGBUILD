# Contributor: Marco Süß <m_a_r_c_o.suess at gmx.de>

pkgname=lib32-lash
pkgver=0.6.0~rc2
_relver=0.6.0.594
pkgrel=1
pkgdesc="A session management system for JACK and ALSA"
arch=('x86_64')
options=('!libtool')
url="http://lash-audio.org"
license=('GPL')
depends=('lib32-dbus-core' 'lib32-gtk2' 'lib32-jack-audio-connection-kit' 'lib32-libxml2')
install=$pkgname.install
source=(http://repos.archaudio.org/testing/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=(cd9cf9b53fff5abb7ea7b711a8f9da06)

build() {
    pkgdir32=$pkgdir/opt/lib32
    install -dm755 $pkgdir32/usr || return 1
    cp -R $srcdir/usr/lib $pkgdir32/usr || return 1
    cp -R $srcdir/usr/share $pkgdir32/usr || return 1
    cp -R $srcdir/usr/include $pkgdir32/usr || return 1
}
