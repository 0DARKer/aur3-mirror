# Maintainer: David Zaragoza <david@zaragoza.com.ve>
pkgname=ucommon
pkgver=4.1.7
pkgrel=2
pkgdesc="A light-weight C++ library to facilitate using C++ design patterns"
arch=('any')
url="http://www.gnutelephony.org/index.php/GNU_uCommon_C%2B%2B"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('http://ftp.gnu.org/gnu/commoncpp/ucommon-4.1.7.tar.gz')
noextract=()
md5sums=('0d631768f603422789a12b0a837332bd')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

