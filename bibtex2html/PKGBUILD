pkgname=bibtex2html
pkgver=1.94
pkgrel=1
pkgdesc="Collection of tools for producing automatically HTML documents from bibliographies written in the BIBTEX format"
url="http://www.lri.fr/~filliatr/bibtex2html/"
license=('GPL')2
arch=('i686' 'x86_64')
makedepends=(ocaml hevea)
source=(http://www.lri.fr/~filliatr/ftp/bibtex2html/$pkgname-$pkgver.tar.gz makefile.patch)
md5sums=('16e6656156e10c07747163a0914058b8' '61b7bbfa318c7d2a336161d80865be5e')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  patch -Np0 -i $srcdir/makefile.patch
  make || return 1

  install -d $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/man/man1

  install -m755 aux2bib bib2bib bibtex2html $pkgdir/usr/bin
  install -m644 aux2bib.1 bib2bib.1 bibtex2html.1 $pkgdir/usr/share/man/man1
}
