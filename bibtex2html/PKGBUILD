pkgname=bibtex2html
pkgver=1.96
pkgrel=1
pkgdesc="Collection of tools for producing automatically HTML documents from bibliographies written in the BIBTEX format"
url="http://www.lri.fr/~filliatr/bibtex2html/"
license=('GPL2')
arch=('i686' 'x86_64')
makedepends=('ocaml' 'hevea')
source=(http://www.lri.fr/~filliatr/ftp/bibtex2html/$pkgname-$pkgver.tar.gz)
md5sums=('cd63fcb95043a3677377b87f30bef7d4')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  sed -i 's+-lstr+/usr/lib/ocaml/libcamlstr.a+' Makefile
  make 
  pdflatex manual.tex
  pdflatex manual.tex
}
package() {
  cd $srcdir/$pkgname-$pkgver
  make prefix=$pkgdir/usr install 
  install -Dm644 manual.pdf $pkgdir/usr/share/doc/$pkgname/$pkgname.pdf
}
