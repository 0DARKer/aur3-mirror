# Maintainer: Simone Sclavi 'Ito' darkhado@gmail.com
pkgname=perl-proc-pid-file
pkgver=1.27
pkgrel=1
pkgdesc="Perl module to manage process id files."
arch=('i686' 'x86_64')
depends=('perl')
url="http://search.cpan.org/~ecalder/Proc-PID-File-1.27/File.pm"
license=('GPL')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/E/EC/ECALDER/Proc-PID-File-$pkgver.tar.gz) 
md5sums=('3fcb07f914f863f9a0967b35af562f9f')
build() {
  cd  ${srcdir}/Proc-PID-File-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make 
  }
package() {
  cd  ${srcdir}/Proc-PID-File-$pkgver
  make pure_install doc_install DESTDIR=${pkgdir} 
  find ${pkgdir} -name '.packlist' -delete
  find ${pkgdir} -name '*.pod' -delete
}

