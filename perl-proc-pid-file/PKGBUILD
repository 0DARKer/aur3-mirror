# Contributor: Wellington Oliveira de Andrade <wellington79@gmail.com>
pkgname=perl-proc-pid-file
pkgver=1.25
pkgrel=1
pkgdesc="Update access and modification timestamps, creating nonexistent files where necessary. "
arch=('i686' 'x86_64')
depends=('perl')
url="http://search.cpan.org/CPAN/authors/"
license=('Unknown')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/E/EC/ECALDER/Proc-PID-File-$pkgver.tar.gz) 
md5sums=('dc6feed736d0dd51f5878e5224af389f')
build() {
  cd  ${srcdir}/Proc-PID-File-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make pure_install doc_install DESTDIR=${pkgdir} || return 1
  find ${pkgdir} -name '.packlist' -delete
  find ${pkgdir} -name '*.pod' -delete
}

