# Maintainer: Zeph <zeph33@gmail.com>

pkgname=rabbitvcs-nemo
pkgdesc="Nemo rabbitvcs SVN GIT HG Extension."
pkgver=0.15.2
pkgrel=1
arch=('any')
url="http://rabbitvcs.org/"
install=$pkgname.install
depends=('python2-nemo' 'python2-dbus' "rabbitvcs=$pkgver")
license=('GPL')
source=(http://rabbitvcs.googlecode.com/files/rabbitvcs-$pkgver.tar.bz2 RabbitVCS_nemo.patch)

md5sums=('de56674e6596e8d8a5684bcf87f6eef6'
         '257230731f4e60c6691ab73d75508e5b')
build(){
	cd "$srcdir/rabbitvcs-$pkgver/clients/nautilus-3.0/"
	patch -p1 -i ../../../RabbitVCS_nemo.patch
	install -D "$srcdir/rabbitvcs-$pkgver/clients/nautilus-3.0/RabbitVCS.py" "$pkgdir/usr/share/nemo-python/extensions/RabbitVCS.py"
}

