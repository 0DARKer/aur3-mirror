pkgname=rabbitvcs-nemo
pkgdesc="Nemo front-end for rabbitvcs SVN GIT HG Extension."
pkgver=0.15.3
pkgrel=1
commit='3fcdfb47e2a6eb0c36c7598f0c0ee63208318467'
arch=('any')
url="http://rabbitvcs.org/"
install=$pkgname.install
depends=('python2-nemo' 'python2-dbus' "rabbitvcs>=$pkgver")
license=('GPL')
source=(https://github.com/linuxmint/nemo-extensions/archive/$commit.zip)
md5sums=('8132d1115d27787851709b3030dd459d')


package()
{
	install -D "$srcdir/nemo-extensions-$commit/nemo-rabbitvcs/RabbitVCS.py" "$pkgdir/usr/share/nemo-python/extensions/RabbitVCS.py"
}
