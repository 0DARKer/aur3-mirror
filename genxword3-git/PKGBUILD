#Maintainer: "riverrun <alovedalongthe AT gmail DOT com>"

pkgname=genxword3-git
pkgver=20120416
pkgrel=1
pkgdesc="Crossword generator written in Python 3"
url="https://github.com/riverrun/genxword"
arch=('any')
license=('GPLv3')
depends=('python' 'python-cairo')
makedepends=('git')
optdepends=('python-gobject: gui support')
options=('zipman')

_gitroot="git://github.com/riverrun/genxword.git"
_gitname="genxword"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
  cd "${srcdir}/$_gitname-build"
  python setup.py install --root=$pkgdir/ --optimize=1
  install -Dm644 genxword3-gtk.desktop $pkgdir/usr/share/applications/genxword3-gtk.desktop
  install -Dm644 icons/genxword3-gtk.png $pkgdir/usr/share/pixmaps/genxword3-gtk.png
  install -Dm644 LICENSE $pkgdir/usr/share/licenses/genxword3-git/LICENSE
  install -Dm644 man/genxword3.1 $pkgdir/usr/share/man/man1/genxword3.1
}
