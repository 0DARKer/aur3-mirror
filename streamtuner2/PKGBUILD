# Maintainer: Wido <widomaker2k7@gmail.com>

pkgname=streamtuner2
pkgver=2.0.8
pkgrel=3
pkgdesc="An internet radio browser"
arch=('i686' 'x86_64')
url="http://milki.erphesfurt.de/streamtuner2/"
license=('custom')
depends=('python2' 'pygtk' 'libglade' 'pyxdg' 'python-imaging' 'python-keybinder' 'python-lxml')
conflicts=('streamtuner')
source=(http://milki.erphesfurt.de/$pkgname/$pkgname-$pkgver.rpm)
#source=(http://milki.erphesfurt.de/$pkgname/$pkgname-$pkgver.tar.gz)
makedepends=('libarchive')
md5sums=('e080be5bf510dc32be75686d1ac50a7a')

build() {
 (cd ${pkgdir} && bsdcpio -id) < $pkgname-$pkgver.rpm || return 1
     # python2 fix
     sed -i 's_^#!.*/usr/bin/env.*python_#!/usr/bin/env python2_' $pkgdir/usr/bin/streamtuner2
}
