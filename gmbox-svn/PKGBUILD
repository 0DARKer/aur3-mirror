# Contributor: osily <ly50247@gmail.com>

pkgname=gmbox-svn
pkgver=211
pkgrel=1
pkgdesc="Google Music Box"
arch=("i686" "x86_64")
url="http://code.google.com/p/gmbox/"
license=('GPL3')
depends=('pygtk' 'python-notify')
makedepends=('subversion')
provides=('gmbox')
conflicts=('gmbox')
_svntrunk=http://gmbox.googlecode.com/svn/trunk
_svnmod=gmbox

build() {
	svn co $_svntrunk $_svnmod
	cd $srcdir/$_svnmod/
	install -d $pkgdir/usr/lib
	install -d $pkgdir/usr/bin
	rm -r $_svnmod/.svn $_svnmod/pixbufs/.svn
	cp -a $_svnmod $pkgdir/usr/lib/
	cd ${pkgdir}/usr/bin
	echo "#!/bin/sh" > gmbox
	echo "python2 /usr/lib/gmbox/gmbox.py" >> gmbox
	chmod 755 gmbox
}

