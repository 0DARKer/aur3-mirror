pkgname=vim-sudoedit
pkgver=0.8
pkgrel=1
pkgdesc="Edit Files using sudo or su or any other tool"
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=2709"
license=('custom')
depends=('vim')
source=('SudoEdit.tar.xz')
md5sums=('1a4e7824e4a44133446389271d07e93f')

build() {
    install -Dm644 ${srcdir}/autoload/SudoEdit.vim ${pkgdir}/usr/share/vim/vim73/autoload/SudoEdit.vim
    install -Dm644 ${srcdir}/doc/SudoEdit.txt ${pkgdir}/usr/share/vim/vim73/doc/SudoEdit.txt
    install -Dm644 ${srcdir}/plugin/SudoEdit.vim ${pkgdir}/usr/share/vim/vim73/plugin/SudoEdit.vim
}

