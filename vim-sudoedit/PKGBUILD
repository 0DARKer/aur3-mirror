pkgname=vim-sudoedit
pkgver=0.12
pkgrel=1
pkgdesc="Edit Files using sudo or su or any other tool"
arch=('any')
url="http://www.vim.org/scripts/script.php?script_id=2709"
license=('custom')
depends=('vim')
groups=('vim-plugins')
install=vimdoc.install
source=('SudoEdit.tar.xz')
md5sums=('5cda3acf443af5dd1bb0918c31e5d18a')


package() {
    install -Dm644 ${srcdir}/autoload/SudoEdit.vim ${pkgdir}/usr/share/vim/vimfiles/autoload/SudoEdit.vim
    install -Dm644 ${srcdir}/doc/SudoEdit.txt ${pkgdir}/usr/share/vim/vimfiles/doc/SudoEdit.txt
    install -Dm644 ${srcdir}/plugin/SudoEdit.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/SudoEdit.vim
}

