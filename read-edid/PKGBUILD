pkgname=read-edid
pkgver=2.0.0
pkgrel=4
pkgdesc="Program that can get information from a PNP monitor"
arch=('i686' 'x86_64')
url="http://www.polypux.org/projects/read-edid/"
license=('GPL')
depends=('libx86>=0.99')
source=("http://www.polypux.org/projects/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('3503a9cff0009c407ca3fded9209f08e7f24755b0499c136a41e59a3479141ceef9f94c30a8b6125db1fdca6a47f62a74fd27101ccadaa7c9af337de310cd29f')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
