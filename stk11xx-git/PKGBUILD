# Maintainer: Marcin Karpezo <sirmacik at gmail dot com>

pkgname=stk11xx-git
pkgver=20110415
pkgrel=2
pkgdesc="Syntek DC-1125 Camera Driver (integrated camera in Asus laptops)"
arch=(i686 x86_64)
url="http://syntekdriver.sourceforge.net"
license=('GPL')
depends=()
makedepends=('git' 'ctags')
provides=('stk11xx')
replaces=('stk11xx')
source=()
md5sums=() #generate with 'makepkg -g'

_gitroot="git://git.stuge.se/stk11xx-driver.git"
_gitname="stk11xx-driver"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make -f Makefile.standalone
}

package() {
  cd "$srcdir/$_gitname-build"
  install -d $pkgdir/lib/modules/`uname -r`/kernel/drivers/media/video
  install -m 644 $srcdir/$_gitname-build/stk11xx.ko $pkgdir/lib/modules/`uname -r`/kernel/drivers/media/video
  install -d $pkgdir/usr/share/stk11xx
  install -m 644 $srcdir/$_gitname-build/README $pkgdir/usr/share/stk11xx
} 
