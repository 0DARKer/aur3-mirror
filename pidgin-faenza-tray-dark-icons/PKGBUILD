# Maintainer: H.Gökhan Sarı <hsa2@difuzyon.net>
pkgname=pidgin-faenza-tray-dark-icons
pkgver=0.1
pkgrel=1
pkgdesc="Pidgin panel icons for Faenza (dark)."
arch=('any')
url="http://opendesktop.org/content/show.php/Faenza+Pidgin?content=137966"
license=('GPL')
depends=('pidgin')
optdepends=('faenza-icon-theme: Faenza icon theme')
conflicts=('pidgin-faenza-dark-tray-icons' 'pidgin-elementary-tray-icons' 'pidgin-monochrome-tray-icons')
source=('faenza-pidgin-dark.tar.gz')
md5sums=('1bc0c0b4e519f58734dbeb7b9217af57')
install="faenza-pidgin.install"

build() {
  mkdir -p "$pkgdir/usr/share/pixmaps/pidgin/tray/hicolor/"
  
  cp -Rf "$srcdir/faenza-pidgin-dark/dark/16x16/" "$pkgdir/usr/share/pixmaps/pidgin/tray/hicolor/"
  cp -Rf "$srcdir/faenza-pidgin-dark/dark/22x22/" "$pkgdir/usr/share/pixmaps/pidgin/tray/hicolor/"
}

# vim:set ts=2 sw=2 et:
