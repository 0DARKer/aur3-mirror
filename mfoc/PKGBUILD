# Maintainer: Pascal E. <archlinux at hardfalcon dot net>
# Contributor: Andrej Gelenberg <andrej.gelenberg at udo dot edu>
pkgname=mfoc
pkgver=0.10.4
pkgrel=1
pkgdesc="Mifare Classic Offline Cracker"
arch=('i686' 'x86_64')
url="http://code.google.com/p/mfoc/"
license=('GPL2')
depends=("libnfc>=1.7.0")
source=("http://mfoc.googlecode.com/files/$pkgname-$pkgver.tar.gz")

md5sums=('536b6075d6bfeb65377ae83bafe82c0b')
sha512sums=('6f2fc019db5c3ce321dc1d947d0a066b1d214ff3f1200bdd9fe22e2a1b72f0d9d7b3ff305e43e5a2f054a86632f6c553ebe1954609f3eea2ecfb9419f8211f4f')

build()
{
 cd $srcdir/$pkgname-$pkgver || return 1
 ./configure --prefix=/usr || return 1
 make || return 1
 make DESTDIR=$pkgdir install || return 1
}
