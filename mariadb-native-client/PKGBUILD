# Maintainer: Jan Was <janek.jan@gmail.com>

pkgname=mariadb-native-client
pkgver=2.0.0
pkgrel=1
pkgdesc="LGPL MariaDB client library"
arch=('i686' 'x86_64')
url="http://mariadb.org"
license=('LGPL')
depends=()
makedepends=('cmake' 'openssl' 'zlib')
optdepends=()
source=(http://mirrors.supportex.net/mariadb/$pkgname/Source/${pkgname}.tar.gz)
md5sums=('3a6fb7b4fdda4fb247ed3474995ad4ff')
sha256sums=('848c45ec1e685412abe020d934eee45d17cf81e7cbfa79ef6317343eb8557354')

build() {
  cd "$srcdir"

  mkdir build
  cd build

  cmake ../$pkgname \
	  -DCMAKE_BUILD_TYPE=Release \
	  -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/build"
  make DESTDIR="$pkgdir" install
}

