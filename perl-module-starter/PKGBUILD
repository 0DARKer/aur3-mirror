# CPAN Name  : Module-Starter
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
# Template @ http://github.com/xenoterracide/AURpan/blob/master/perl-module-starter/PKGBUILD.tt
# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-module-starter'
pkgver='1.54'
pkgrel='2'
pkgdesc="a simple starter kit for any module"
arch=('any')
url='http://search.cpan.org/dist/Module-Starter'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/P/PE/PETDANCE/Module-Starter-1.54.tar.gz')
md5sums=('abf086bf058c2c80ea283d6b4049275b')

build() {
  DIST_DIR="${srcdir}/Module-Starter-1.54"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

