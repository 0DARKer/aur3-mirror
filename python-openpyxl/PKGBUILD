pkgbase=python-openpyxl
#pkgname=('python-openpyxl' 'python2-openpyxl')
pkgname=('python-openpyxl')
pkgver=1.6.1
pkgrel=1
pkgdesc="A Python library to read/write Excel 2007 xlsx/xlsm files."
arch=('any')
license=('MIT')
url="https://bitbucket.org/ericgazoni/openpyxl/wiki/Home"
depends=('python' 'python-distribute' )
conflicts=()
replaces=()
source=(https://bitbucket.org/ericgazoni/openpyxl/get/$pkgver.tar.gz)
md5sums=('9b57a8c8c15c85b3c96035448908c8c1')

build()	{
	cd $srcdir
	
	for i in *  
	do 
		if [ -d $i ] 
		then 
			mv $i python-openpyxl
		fi 
	done
	
	#cp -rf python-openpyxl python2-openpyxl
	
	# Build for python 3
	cd $srcdir/python-openpyxl
	python setup.py build
	
	#Build for Python 2
	#cd $srcdir/python2-openpyxl
	#python2 setup.py build
}

package() {
	conflicts=('python-openpyxl-hjunes')
  cd $srcdir/python-openpyxl
  python setup.py install --prefix=/usr --root=$pkgdir --optimize=1 --skip-build
}

#package_python2-openpyxl() {
  #cd $srcdir/python2-openpyxl
  #python2 setup.py install --prefix=/usr --root=$pkgdir --optimize=1 --skip-build
#}
