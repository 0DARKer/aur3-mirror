# Maintainer: Dany Martineau <dany.luc.martineau at gmail.com>

pkgname=pacdefence
pkgver=1.1.6
pkgrel=1
pkgdesc="Tower defence game."
arch=('any')
url="http://www.freewebs.com/pacdefence/"
license=('GPL')
depends=('java-runtime')
makedepends=()
source=('http://www.freewebs.com/pacdefence/PacDefence.jar' 'pacdefence.desktop')
md5sums=('a6a12451688fc1ba4bebc75cc629ed9e' '405c7b7d2e464ad8d1fca3e466d6e287')


build() {
  cd ${srcdir}
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/{applications,java}
  install pacdefence.desktop $pkgdir/usr/share/applications
  install PacDefence.jar $pkgdir/usr/share/java
  echo "cd '/usr/share/java/' && java -jar PacDefence.jar" > ${pkgdir}/usr/bin/pacdefence.sh
  chmod 755 ${pkgdir}/usr/bin/pacdefence.sh
}
