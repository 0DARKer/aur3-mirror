# Maintainer: Dany Martineau <dany.luc.martineau at gmail.com>
# Maintainer: Anton Larionov <diffident dot cat at gmail dot com>

pkgname=pacdefence
pkgver=1.1.6
pkgrel=3
pkgdesc="Tower defence game"
arch=('any')
url="http://www.freewebs.com/pacdefence/"
license=('GPL3')
depends=('java-environment' 'sh')

source=('http://www.freewebs.com/pacdefence/PacDefence.jar'
        'pacdefence.desktop'
        'pacdefence.sh')

md5sums=('a6a12451688fc1ba4bebc75cc629ed9e'
         'd9598cf387c0e8ff0742a7132a62d9f3'
         'b59b43e20dd7c92abd191e0e8b248f6d')

build() {
  install -dm755 "${pkgdir}/usr/share/${pkgname}"
  install -m644 "${srcdir}/PacDefence.jar" "${pkgdir}/usr/share/${pkgname}"

  install -Dm644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"

  install -D -m755 "${srcdir}/${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
}

# vim:set ts=2 sw=2 et:
