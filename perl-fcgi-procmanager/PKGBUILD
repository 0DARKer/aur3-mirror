pkgname=perl-fcgi-procmanager
pkgver=0.24
pkgrel=1
pkgdesc="functions for managing FastCGI applications"
arch=('any')
url="http://search.cpan.org/~gbjk/FCGI-ProcManager"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.5.0')
options=('!emptydirs')
md5sums=('0aa184b1e5339e0ad92f4c1439406304')
source=("http://search.cpan.org/CPAN/authors/id/B/BO/BOBTFISH/FCGI-ProcManager-$pkgver.tar.gz")

build() {
	cd "$srcdir/FCGI-ProcManager-$pkgver"
	PERL_MM_USE_DEFAULT=0 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/FCGI-ProcManager-$pkgver"
	make DESTDIR="$pkgdir/" install
}
