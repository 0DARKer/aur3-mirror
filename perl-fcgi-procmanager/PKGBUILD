pkgname=perl-fcgi-procmanager
pkgver=0.19
pkgrel=1
pkgdesc="functions for managing FastCGI applications"
arch=('any')
url="http://search.cpan.org/~gbjk/FCGI-ProcManager"
license=('unknown')
depends=('perl>=5.5.0')
options=('!emptydirs')
md5sums=('85b4eb5203f0adbf14bed39a258b9a59')
source=(http://www.cpan.org/authors/id/G/GB/GBJK/FCGI-ProcManager-$pkgver.tar.gz)

build() {
    cd $startdir/src/FCGI-ProcManager-$pkgver
    PERL_MM_USE_DEFAULT=0 perl Makefile.PL INSTALLDIRS=vendor || return 1
    make || return 1
    make DESTDIR="$pkgdir/" install || return 1

    find "$pkgdir" -name '.packlist' -delete
    find "$pkgdir" -name 'perllocal.pod' -delete
}
