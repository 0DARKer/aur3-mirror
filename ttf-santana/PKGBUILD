pkgname=ttf-santana
pkgver=1
pkgrel=1
pkgdesc="A clean, Sans-like font"
arch=('i686' 'x86_64')
url="http://www.dafont.com/santana.font"
license=('GPL')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(ttf-santana.zip::http://img.dafont.com/dl/?f=santana
	ttf.install)
md5sums=('841183d6dba85e31d56f2f2fc92aef05'
         'a1a8cdd720dc8b3e1129714b72440610')

build() {
 mkdir -p $pkgdir/usr/share/fonts/TTF
 cp $srcdir/{Santana-Black.ttf,Santana-BlackCondensed.ttf,Santana-Bold.ttf,Santana-RegularCondensed.ttf,Santana.ttf,SantanaXtraCondensed.ttf} $pkgdir/usr/share/fonts/TTF
}
