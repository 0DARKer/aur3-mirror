# Contributor: Tomas Kral <tomas.kral@gmail.com>

pkgname=jmeter
pkgver=2.3.4
pkgrel=1
arch=("x86_64" "i686")
pkgdesc="A Java desktop application designed to load test functional behavior and measure performance"
url="http://jakarta.apache.org/jmeter/"
license=("apache")
depends=("bash" "openjdk6")
source=("http://ftp.sh.cvut.cz/MIRRORS/apache/jakarta/jmeter/binaries/jakarta-$pkgname-$pkgver.tgz")
md5sums=("cef24a84bcfc814f9b5b1f7b6a8f389f")

#based on Sven Kauber version
build()
{
  mkdir -p $startdir/pkg/opt/jmeter $startdir/pkg/usr/sbin
  cd $startdir/src/jakarta-$pkgname-$pkgver
  cp -ax * $startdir/pkg/opt/jmeter
  touch $startdir/pkg/usr/sbin/jmeter
  echo "#!/bin/bash" > $startdir/pkg/usr/sbin/jmeter
  echo "java -jar /opt/jmeter/bin/ApacheJMeter.jar" > $startdir/pkg/usr/sbin/jmeter
  chmod 755 $startdir/pkg/usr/sbin/jmeter
}
