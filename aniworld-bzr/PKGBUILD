# Contributor: Kevin Aun <kevin.aun at hot dot ee>
pkgname=aniworld-bzr
pkgver=0.2.preview2
pkgrel=1
pkgdesc="AniDB anime organizer"
arch=('any')
url="https://launchpad.net/aniworld"
license=('GPL')
depends=('python' 'desktopcouch' 'pyxdg' 'python-distutils-extra-bzr')
makedepends=('setuptools' 'bzr' )
source=()
md5sums=()

_bzrmod="aniworld"
_bzrtrunk="lp:aniworld"

build() {
cd $startdir/src
msg "Getting sources..."
bzr branch $_bzrtrunk
cd $_bzrmod
python setup.py install --root=$pkgdir/ --optimize=1 || return 1
}