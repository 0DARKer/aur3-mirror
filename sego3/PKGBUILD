pkgname=sego3
pkgver=0.55
pkgrel=4
pkgdesc="tool to control your id3tags"
url="http://bash.viharpander.dk/"
depends=('python-eyed3' 'wmctrl')
optdepends=("feh: to display info about jpegs")
license=('GPL')
source=(${pkgname} readid3.py)
arch=(any)

build() {
  install -D -m755 ${srcdir}/sego3 ${pkgdir}/usr/bin/sego3
  install -D -m755 ${srcdir}/readid3.py ${pkgdir}/usr/bin/readid3.py
}
