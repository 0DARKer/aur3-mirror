# Maintainer: Zatherz <zatherz[at]linux[dot]com>
pkgname=pulseaudio-openrc
pkgver=r0.g83ae736
pkgrel=2
pkgdesc="Pulseaudio service for OpenRC"
url="https://github.com/soulofmachines/pulseaudio-openrc"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=('openrc-core')
makedepends=('git')
source=("git://github.com/soulofmachines/pulseaudio-openrc")
md5sums=("SKIP")

pkgver() {
  cd "pulseaudio-openrc"
  git describe --long --all | sed -r 's/([^-]*-g)/r\1/;s/-/./g;s/heads\/master.//g'
}

package() {
  cd "pulseaudio-openrc"
  sed -i 's/start/start_pre/;s/stop/stop_pre/' pulseaudio
  install -Dm755 pulseaudio "$pkgdir/etc/init.d/pulseaudio"
}
