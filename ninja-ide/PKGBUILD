# Maintainer: Jesus Jerez <jhuss@archlinux.org.ve>
pkgname=ninja-ide
pkgver=1.0
pkgrel=1
pkgdesc="cross-platform integrated development environment specially design to build Python Applications"
arch=('any')
url="http://ninja-ide.org.ar"
license=('GPL3')
depends=('python2' 'python2-qt' 'python-pygments' 'python-rope')
makedepends=('unzip')
#install=
changelog=$pkgname.changelog
source=("http://ninja-ide.googlecode.com/files/NINJA-IDE_SOURCES_1.0.zip"
	"ninja-ide.desktop")
md5sums=('c39be511ae861f3aed408c647753bd6a'
         'ea11ecc37e80d88a2d222fc91f392372')
sha256sum=('8b4e350958b5cbce899ea9eb79400c01be3bf0e5d66a430c7a6360bcd4bb4a16'
	   'a010a1b9e73d89b854031b798e2e95f43a4214dc3fb26b4f8784da330d59c3a7')

build() {
  mv ${srcdir}/${pkgname} ${srcdir}/${pkgname}-${pkgver}
  mkdir -p ${pkgdir}/usr/{bin,share}/
  mkdir -p ${pkgdir}/usr/share/applications

  cp -R ${srcdir}/${pkgname}-${pkgver} ${pkgdir}/usr/share/${pkgname}
  install -D -m644 "${srcdir}/ninja-ide.desktop" "${pkgdir}/usr/share/applications/"

  echo "#!/bin/bash
python2 /usr/share/ninja-ide/ninja.py" > ${pkgdir}/usr/bin/${pkgname}
  chmod 755 ${pkgdir}/usr/bin/${pkgname}
}
