# Contributor: Gerhard Brauer <gerhard.brauer@web.de>
pkgname=libcdk
pkgver=5.0.20090215
pkgrel=5
pkgdesc="Curses Development Kit - widget library, enhanced version"
arch=('i686' 'x86_64')
url="http://invisible-island.net/cdk"
license=('custom')
depends=('bash')
makedepends=('setconf')
options=(!emptydirs)
md5sums=('851adaa3b6c51d39fb61d8ed1714a7d3')
source=('ftp://invisible-island.net/cdk/cdk.tar.gz')

build() {
  cd $srcdir/cdk-5.0-20090215

  msg "Configuring..."
  ./configure --prefix=/usr
  setconf Makefile DOCUMENT_DIR $pkgdir/usr/share/doc/cdk
  #setconf Makefile mandir $pkgdir/usr/share/man
  setconf Makefile MAN_DIR $pkgdir/usr/share/man

  msg "Building..."
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
  install -D -m 644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}
# vim:set ts=2 sw=2 et:
