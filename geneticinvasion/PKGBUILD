pkgname=geneticinvasion
pkgver=0.4.5.1
pkgrel=3
pkgdesc="A Tower Defence game that uses evolutionary algorithm"
arch=('i686' 'x86_64')
url="http://projects.haxx.es/p/genetic-invasion"
license=('GPL')
depends=('libeo' 'sfml<=1.6' 'mesa')
makedepends=('make' 'cmake')
conflicts=()
source=('http://projects.haxx.es/media/upload/genetic-invasion/files/genetic-invasion-v0.4.5.1.zip')
md5sums=('aeacbd9a1bb2756edbcde214f8e0835f')

build() {
	cd $srcdir/genetic-invasion-v0.4.5.1

	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make install DESTDIR=$pkgdir
}
