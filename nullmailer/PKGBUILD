# Contributor: Roberto Alsina <ralsina@kde.org>
pkgname=nullmailer
pkgver=1.05
pkgrel=4
pkgdesc="a sendmail/qmail/etc replacement MTA for hosts which relay to a fixed set of smart relays."
arch=('any')
url="http://www.untroubled.org/nullmailer/"
license=("GPL")
depends=('runit' 'gcc-libs')
install=nullmailer.install
source=(http://www.untroubled.org/nullmailer/$pkgname-$pkgver.tar.gz \
        nullmailer.runit nullmailer.log.runit )
md5sums=('35124cc05f893efba1310e2ec7c876ff'
         'd13b315b94d0d4a511fc6c1a55afc0cb'
         'f1efeafa415a4e49a53f5a672776185f'
         )

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --libexecdir=/usr/lib \
              --sysconfdir=/etc --localstatedir=/var
  make || return 1
  make DESTDIR=$startdir/pkg install || exit 1
  
  install -D -m 0755 ../nullmailer.log.runit $startdir/pkg/etc/sv/nullmailer/log/run
  install -D -m 0755 ../nullmailer.runit $startdir/pkg/etc/sv/nullmailer/run
}
