# Maintainer: aksr <aksr at t-com dot me>
pkgname=neatrefer-git
pkgver=0.r1.793ce03
pkgrel=1
pkgdesc="A small refer clone for managing bibliographic references."
arch=('i686' 'x86_64')
#url="http://litcave.rudi.ir/"
url="http://repo.or.cz/w/neatrefer.git"
license=('custom')
groups=()
depends=('neatroff')
makedepends=('git')
optdepends=()
provides=('neatrefer')
conflicts=('neatrefer')
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=git://repo.or.cz/neatrefer.git
_gitname=neatrefer

pkgver() {
  cd "$srcdir/$_gitname"
  printf "0.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make all
}

package() {
  cd "$srcdir/$_gitname-build"

  #install -Dm755 refer $pkgdir/usr/bin/refer
  install -Dm755 refer $pkgdir/usr/bin/neatrefer
  install -Dm644 README $pkgdir/usr/share/doc/$pkgname/README
}

