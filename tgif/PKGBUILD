# Contributor: Alex Suykov <axs@ukr.net>
pkgname=tgif
pkgver=4.2.5
pkgrel=1
pkgdesc="Vector-based draw tool (for technical, not artistic, stuff)"
arch=('i686' 'x86_64')
url="http://bourbon.usc.edu/tgif/"
license=('QPL')
depends=(glibc libx11 libxext libxt libsm libice libxmu libidn)
makedepends=(imake)
source=(ftp://bourbon.usc.edu/pub/tgif/tgif-QPL-$pkgver.tar.gz)
md5sums=('a622240ce2377f15b6d8261e4c49b8f6')

build() {
  cd "$srcdir/tgif-QPL-$pkgver"
  xmkmf || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install
}

