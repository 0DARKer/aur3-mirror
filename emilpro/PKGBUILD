# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=emilpro
pkgver=1
pkgrel=1
pkgdesc="Graphical disassembler for a large number of instruction sets."
arch=('i686' 'x86_64')
url="http://www.emilpro.com/"
license=('GPL2')
depends=('curl' 'elfutils' 'gtkmm3' 'gtksourceviewmm' 'libxml++')
options=('!buildflags' '!makeflags')
source=(https://github.com/SimonKagstrom/emilpro/archive/master.zip)
md5sums=(SKIP) # Until there's no stable version(2) that builds, I will use the development(master) version.

prepare() {
  cd $srcdir/$pkgname-master
  mkdir build
  cd build
  cmake ..
}

build() {
  cd $srcdir/$pkgname-master/build
  make
}

package() {
  cd $srcdir/$pkgname-master/build
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}