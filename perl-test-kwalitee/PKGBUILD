pkgdesc="or even within your own organization
-- testing its Kwalitee before creating a release can help you improve your
quality as well."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-module-cpants-analyse>=0.82')
makedepends=()
url='http://search.cpan.org/dist/Test-Kwalitee'
source=('http://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Test-Kwalitee-1.02.tar.gz')
md5sums=('0d3a5e76057ecdae20b836bf5804dc5a')
sha512sums=('f0609cecea7de9bfa13c80945f3a1d53d324f56c7ef1af44dfff5b00100324d63541f72ccbf65898230f17ab75507214d028abac8b80a87bebbb50857ae74052')
_distdir="Test-Kwalitee-1.02"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

