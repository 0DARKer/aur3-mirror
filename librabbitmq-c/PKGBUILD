# Contributor: aleiphoenix <aleiphoenix@gmail.com>

pkgname=librabbitmq-c
pkgver=1.6.0
pkgrel=1
pkgdesc="A RabbitMQ library written in C-language"
arch=('i686' 'x86_64')
license=('BSD')
makedepends=('mercurial' 'autoconf')
url="http://code.google.com/p/php-amqp/"
options=(!libtool)

_hgroot="http://hg.rabbitmq.com/rabbitmq-c"
_hgname="rabbitmq-c"

_hgcode_gen="http://hg.rabbitmq.com/rabbitmq-codegen"
_hgcode_genname="codegen"

build() {
  cd $srcdir
  msg "Connecting to the mercurial server...."
  
  if [[ -d $srcdir/$_hgname ]] ; then
    cd $_hgname
    hg pull && hg up
    msg "The local files are updated."
  else
    hg clone $_hgroot $_ghname
    cd $_hgname
  fi

  if [[ -d $srcdir/$_hgname/$_hgcode_genname ]] ; then
    cd $_hgcode_genname
    hg pull && hg up
    msg "The local files are updated."
    cd ..
  else
    hg clone $_hgcode_gen $_hgcode_genname
  fi

  msg "mercurial checkout done"
  msg "Starting make..."

  autoreconf -i
  # make sure we using the python2
  sed -i 's/checkPython\ python$/checkPython\ python2/g' configure


  ./configure
  make
  make DESTDIR=$pkgdir install
  
  rm -rf $srcdir/$_gitname-build
}
