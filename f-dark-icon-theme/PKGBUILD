# Contributor: Emiliano Vavassori <syntaxerrormmm@gmail.com>
# Template from Frikilinux faenza-icon-theme
pkgname=f-dark-icon-theme
pkgver=0.8
pkgrel=5
pkgdesc="Faenza Dark icon theme designed for Equinox GTK theme"
url="http://gnome-look.org/content/show.php/F-Dark+(Faenza)+?content=135696"
license=('GPL3')
arch=('any')
source=("http://voyager.legtux.org/icones/F-Dark-Faenza.tar.gz")
md5sums=('b2fc27455c6ab3ad7f48995a6604ef17')
install=${pkgname}.install

package() {
  install -d -m755 "${pkgdir}/usr/share/icons"
  tar xzf "${srcdir}"/F-Dark-Faenza/F-Dark.tar.gz -C "${pkgdir}/usr/share/icons"
  tar xzf "${srcdir}"/F-Dark-Faenza/F-Dark-Black.tar.gz -C "${pkgdir}/usr/share/icons"

  # Fixing ownerships, just in case
  chown -R root:root "${pkgdir}/usr/share/icons"
}

