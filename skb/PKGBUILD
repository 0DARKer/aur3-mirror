# Maintainer: muhas <muhas@muhas.ru>
pkgname=skb
pkgver=0.3
pkgrel=1
pkgdesc="A simple keyboard layout indicator. Too simple, really. It prints the name of layout to its output, nothing more."
arch=('i686' 'x86_64')
url=('http://plhk.ru/skb')
license=('GPL')
depends=()
source=(http://plhk.ru/static/skb/${pkgname}-${pkgver}.tar.gz)

md5sums=('4521952e25ebb73f3787fea03e633e41')

build() {
 
  cd ${srcdir}/${pkgname}-${pkgver}
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}

