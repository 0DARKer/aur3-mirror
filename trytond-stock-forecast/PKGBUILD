# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-stock-forecast
_pkgname=trytond_stock_forecast
pkgver=3.2.1
_pkgdir=3.2
pkgrel=1
pkgdesc="The stock_forecast module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-company>=3.2' 'trytond-product>=3.2' 'trytond-stock>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("2f9a738966182d9e8b9515fa9b863f0c")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}