pkgname=selektor
pkgver=3.12.6
pkgrel=1
pkgdesc="Tor launcher and exit node chooser"
arch=('i686' 'x86_64')
url="http://www.dazzleships.net/?page_id=71"
license=('GPL2')
source=("${pkgname}_${pkgver%.6}-6_all.tar.gz::http://www.dazzleships.net/?wpdmact=process&did=MTcuaG90bGluaw==")
sha256sums=("3fc60021df3d60ff615d93727c2565001cde6ec0bc1e9222c11e2902aba4c28b")

package() {
  destfolder="${pkgdir}/opt"
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/share"
  mkdir -p "$destfolder"

  cd ${srcdir}/${pkgname}_${pkgver%.6}-6_all

  cp opt etc "${pkgdir}" -rf
  cp applications man "${pkgdir}/usr/share" -rf
  cp "${pkgname}" "${pkgdir}/usr/bin" -rf
}


