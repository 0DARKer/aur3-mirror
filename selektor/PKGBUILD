#Contributor: allencch <allencch at hotmail dot com>
pkgname=selektor
pkgver=3.12c
pkgrel=1
pkgdesc="Tor launcher and exit node chooser"
arch=('i686' 'x86_64')
url="http://www.dazzleships.net/?page_id=71"
license=('GPL2')
source=("SelekTOR_Linux.tar.gz::http://www.dazzleships.net/?wpdmact=process&did=My5ob3RsaW5r")
sha256sums=("62114c084e57d9da3ff1fa3389f922e4aa3a3872f80a43d74a57e35e35468635")

package() {
  destfolder="${pkgdir}/opt/selektor"
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/share/applications"
  mkdir -p "$destfolder"
  cp lib resources SelekTOR.jar uninstall.sh selektor README "$destfolder" -rf
  cp selektor "${pkgdir}/usr/bin" -f
  
  cp shortcuts/SelekTOR.desktop "${pkgdir}/usr/share/applications" -f
  cp shortcuts/"SelekTOR Proxy Reset".desktop "${pkgdir}/usr/share/applications" -f
  cp shortcuts/"SelekTOR Autostart".desktop "${pkgdir}/usr/share/applications" -f #do not use autostart
}


