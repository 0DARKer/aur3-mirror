# Contributor: Carl Mueller  arch at carlm e4ward com

pkgname=quickaccess-plasmoid
pkgver=0.8.1
pkgrel=3
pkgdesc="Kdeplasma plasmoid for quick access to folders."
arch=('i686' 'x86_64')
url="http://www.kde-look.org/content/show.php/QuickAccess+(maintenance+fork)?content=101968"
install=$pkgname.install
license=('GPL')
depends=('kdebase-workspace' 'kdebase-plasma')
makedepends=('make' 'cmake' 'automoc4')
conflicts=(kde-extragear-plasmoids)
source=(http://www.kde-look.org/CONTENT/content-files/101968-plasma-widget-quickaccess_$pkgver.orig.tar.gz)
md5sums=('744f7d85662808869bf22eae53ca4660')
build() {
    cd $srcdir/plasma-widget-quickaccess-$pkgver
    mkdir build
    cd build
    cmake ../ -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` || return 1
    make VERBOSE=1 || return 1
    make DESTDIR=$pkgdir install || return 1
}
