pkgname=sfftobmp
pkgver=3.1.3
pkgrel=3
pkgdesc="Converts SFF Files to BMP, JPEG or multipage TIFF formats.It is a part of sfftools"
arch=(i686 x86_64)
url="http://sfftools.sourceforge.net"
license="Copyright Peter Sch√§fer-Hutter"
depends=('glibc' 'libjpeg')
makedepends=('make' 'autoconf' 'automake' 'hd2u' 'boost')

source=(http://downloads.sourceforge.net/project/sfftools/SFFTools/sfftobmp/sfftobmp3_1_3_src.zip jversion.h)

_prefix=/usr

build() {
	 #fixing missing file of newer libjpeg
		  cp jversion.h $startdir/src/sfftobmp3/src/
		  cd $startdir/src/sfftobmp3
	 #fixing scripts and source, because they are dos formatted
		dos2unix *
		dos2unix src/*
		dos2unix config/*

	  ./configure --prefix=${_prefix}|| return 1
	  make || return 1

	mkdir -p $pkgdir/usr/bin/
	cp $startdir/src/sfftobmp3/src/sfftobmp $pkgdir/usr/bin
}

md5sums=('0e3ef54fc07cb58be5315b1283e79c67' '8561c2dc4b12c78e227967cce6aadaee')
