# Maintainer: Glen Oakley <goakley123@gmail.com>
# Edited: Kiril Zvezdarov <kzvezdarov@gmail.com>

pkgname=polycode-git
pkgrel=1
pkgver=20130517
pkgdesc="Polycode is a cross-platform framework for creative code."
arch=('i686' 'x86_64')
url="http://polycode.org/"
license=('MIT')
groups=()
depends=('gcc-libs' 'glu' 'openal' 'sdl')
makedepends=('git' 'cmake' 'python' 'python2-ply' 'doxygen')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
noextract=()

_gitroot=git://github.com/ivansafrin/Polycode.git
_gitname=Polycode

pkgver () {
  cd "$srcdir/$_gitname"
  git describe --always | sed 's/-/./g'
}

build() {
  echo "$pkgdir"
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "$srcdir/$_gitname"

  #
  # BUILD HERE
  #
  msg "Building Dependencies"
  cd Dependencies
  if [[ ! -d "Build/Debug" ]]; then
    mkdir -p Build/Debug
  fi
  cd Build/Debug
  cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Debug ../..
  make
  cd ..
  mkdir Release
  cd Release
  cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release ../..
  make
  # Building Polycode
  cd ../../..
  mkdir -p Build/Debug
  cd Build/Debug
  cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Debug -DPOLYCODE_BUILD_BINDINGS=ON -DPOLYCODE_BUILD_PLAYER=ON -DPYTHON_EXECUTABLE=/usr/bin/python2 ../..
  make
  make install
  cd ..
  mkdir Release
  cd Release
  cmake -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release -DPOLYCODE_BUILD_BINDINGS=ON -DPOLYCODE_BUILD_PLAYER=ON -DPYTHON_EXECUTABLE=/usr/bin/python2 ../..
  make
  make install
  cd ../../Standalone
  mkdir Build
  cd Build
  cmake -G "Unix Makefiles" ..
  make install
  msg "Building the IDE"
  cd "$srcdir/$_gitname/IDE/Build/Linux"
  make
  msg "Building C++ examples"
  cd "$srcdir/$_gitname/Release/Linux/Framework/Examples/Linux/"
  make
}

package() {
  mkdir -p "$pkgdir/opt/polycode-git/IDE"
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/share/doc"
  msg "Installing Framework, Standalone, and IDE"
  cp -r "$srcdir/$_gitname/Release/Linux/Framework" "$pkgdir/opt/polycode-git/"
  cp -r "$srcdir/$_gitname/Release/Linux/Standalone" "$pkgdir/opt/polycode-git/"
  cp -r "$srcdir/$_gitname/IDE/Build/Linux/Build" "$pkgdir/opt/polycode-git/IDE/"
  cp -r "$srcdir/$_gitname/Documentation" "$pkgdir/opt/polycode-git/"
  cd "$pkgdir/opt/polycode-git/IDE/Build"
  ln -s "$pkgdir/opt/polycode-git/Framework/Tools/polybuild" "$pkgdir/usr/bin/polybuild"
  ln -s "$pkgdir/opt/polycode-git/Framework/Tools/polyimport" "$pkgdir/usr/bin/polyimport"
  ln -s "$pkgdir/opt/polycode-git/Standalone/Player/PolycodePlayer" "$pkgdir/usr/bin/PolycodePlayer"
  cd "$pkgdir/usr/bin"
  echo "#!/bin/bash" > Polycode
  echo "cd /opt/polycode-git/IDE/Build && exec Polycode" >> Polycode
  chmod +x Polycode
  ln -s "$pkgdir/opt/polycode-git/Documentation" "$pkgdir/usr/share/doc/polycode"
  cd "$srcdir/$_gitname/IDE/Build/Linux"
  # Installing Polycode Standalone IDE
  mkdir -p "$pkgdir/opt/polycode-git"
  cp -r Build/* "$pkgdir/opt/polycode-git"
  mkdir -p "$pkgdir/usr/share/licenses/polycode-git"
  cp "$srcdir/$_gitname/LICENSE.txt" "$pkgdir/usr/share/licenses/polycode-git/"
}

