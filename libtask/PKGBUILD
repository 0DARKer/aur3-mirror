# Maintainer: Scott Tincman <sctincman@gmail.com>

pkgname=libtask
pkgver=1.0
pkgrel=1
pkgdesc="a coroutine library for C and Unix"
arch=('i686' 'x86_64')
license=('MIT')
depends=()
url="http://swtch.com"
source=(${url}/${pkgname}.tar.gz)
md5sums=('9b246165ff4505a350de6bb9fa528acc')

build() {
	cd "${srcdir}/${pkgname}"
	
	make || return 1
	mkdir -p ${pkgdir}/usr/lib ${pkgdir}/usr/include
	cp libtask.a ${pkgdir}/usr/lib
	cp task.h ${pkgdir}/usr/include
}
