#!/bin/bash
. /etc/rc.conf
. /etc/rc.d/functions
PIDFILE=/var/run/notificationdd.pid
PID=$(cat $PIDFILE 2>/dev/null)
if ! readlink -q /proc/$PID/exe | grep -q '^/usr/sbin/sshd'; then
	PID=
	rm $PIDFILE 2>/dev/null
fi

case "$1" in
	start)
		stat_busy 'Starting Notify Listener'
		[[ -d /var/empty ]] || mkdir -p /var/empty
		[[ -z $PID ]] && /usr/bin/notify-listener.py $SSHD_ARGS
		if [[ $? -gt 0 ]]; then
			stat_fail
		else
			add_daemon notificationd
			stat_done
		fi
		;;
	stop)
		stat_busy 'Stopping Notify Listener'
		[[ ! -z $PID ]] && kill $PID &> /dev/null
		if [[ $? -gt 0 ]]; then
			stat_fail
		else
			rm_daemon notificationd
			stat_done
		fi
		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	*)
		echo "usage: $0 {start|stop|restart}"
esac
exit 0
