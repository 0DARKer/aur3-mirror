# Maintainer: Emmanuel Gras <gras.emmanuel@gmail.com>

pkgname=metasm-hg
pkgver=2487
pkgrel=1
pkgdesc="An assembly manipulation suite written in Ruby"
arch=('any')
url="http://metasm.cr0.org/"
license=('LGPL')
depends=('ruby')
makedepends=('mercurial')
optdepends=('ruby-gtk2: gui support')
provides=('metasm')
install=metasm.install
source=()

_hgroot="http://metasm.cr0.org/hg/metasm"
_hgrepo="metasm"

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [ -d $_hgrepo ] ; then
    cd $_hgrepo
    hg pull -u
    msg "The local files are updated."
  else
    hg clone $_hgroot $_hgrepo
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"
  
  # remove mercurial files
  rm -rf .hg/ .hgtags
}

package() {
  cd "$srcdir/$_hgrepo-build"
  mkdir -p $pkgdir/opt/metasm
  cp -a * $pkgdir/opt/metasm
} 
