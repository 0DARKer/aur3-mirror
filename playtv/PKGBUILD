pkgname=playtv
pkgver=59.a11b9c207411
pkgrel=1
pkgdesc="Interface for watching online TV channels. Program is written in Vala/GTK3."
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPL')
depends=('dconf' 'desktop-file-utils' 'hicolor-icon-theme' 'libmp-control' 'gtk3')
makedepends=('vala' 'mercurial')
source=(alphaos::hg+https://bitbucket.org/simargl/alphaos)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo "$(hg identify -n).$(hg identify -i)"
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}
