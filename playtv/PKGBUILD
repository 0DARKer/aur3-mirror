pkgname=playtv
pkgver=73.1052ac9e204f
pkgrel=1
pkgdesc="GTK+3 based interface for watching online TV channels"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPL')
depends=('gtk3' 'mplayer' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme' 'libmp-control')
makedepends=('vala' 'mercurial')
source=(alphaos::hg+https://bitbucket.org/simargl/alphaos)
md5sums=('SKIP')
install=$pkgname.install

pkgver() {
  cd "$srcdir"/alphaos
  echo "$(hg identify -n).$(hg identify -i)"
}

package() {
  cd "$srcdir"/alphaos/def-scripts/03_extra/$pkgname/$pkgname
  make DESTDIR="$pkgdir/" install
}