 
pkgname=rbutil
pkgver=1.2.11
pkgrel=1
pkgdesc="Qt Rockbox Utility (compiled from sources with last qt)"
arch=('i686' 'x86_64')
url="http://www.rockbox.org/twiki/bin/view/Main/RockboxUtility"
license=("GPL")
depends=('qt>=4.3.0' 'libusb')
provides=('rbutilqt' 'rbutil')
conflicts=('rbutil-bin' 'rbutil-svn')
source=(http://download.rockbox.org/${pkgname}/source/${pkgname}_${pkgver}-src.tar.bz2 $pkgname.desktop)
md5sums=('517fc80e4c3e45c9a38aa7ffb5b454a6'
         'c10d3c5bac897097f63770578ae322c2')

build() {
	cd $srcdir/${pkgname}_${pkgver}/$pkgname/rbutilqt
	lrelease rbutilqt.pro
	qmake || return 1
	make || return 1
	install -D -m644 $srcdir/${pkgname}_${pkgver}/$pkgname/rbutilqt/icons/rockbox-64.png $pkgdir/usr/share/pixmaps/$pkgname.png
	install -D -m644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
	install -D -m755 RockboxUtility $pkgdir/usr/bin/$pkgname || return 1
} 
