# Editor by MoD
pkgname="gcw"
pkgver=0.9.2
pkgrel=1
pkgdesc="Simple GTK text editor."
arch=('i686' 'x86_64')
url="http://pronou.net/code/gcw/"
license=('WTFPL')
depends=('gtksourceview2')
makedepends=('intltool')
conflicts=('gcw-gtk3')
source=(${url}${pkgname}-${pkgver}.tar.xz)
sha256sums=('6a0024884af724db95e67ac8e2587374548688f495a26cb64c5c1a0c5c9ad2a5')
#install=('gcw.install')
build() {
	cd "${pkgname}-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}

