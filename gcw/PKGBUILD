# PKGBUILD by ArcherSeven
# Maintainer: ArcherSeven
# Editor by MoD
pkgname="gcw"
pkgver=0.8.2
pkgrel=1
pkgdesc="Simple GTK text editor."
arch=('i686' 'x86_64')
url="http://archerseven.com/pkg"
license=('WTFPL')
depends=('gtksourceview2')
makedepends=('intltool')
conflicts=('gcw-gtk3')
source=(${url}/${pkgname}-${pkgver}.tar.xz)
md5sums=('b1e3f3cd0b3d010cec61aa3a08a76845')
#install=('gcw.install')
build() {
	cd "${pkgname}-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}
