# PKGBUILD by ArcherSeven
# Maintainer: ArcherSeven
# Editor by MoD
pkgname="gcw"
pkgver=0.9.0
pkgrel=1
pkgdesc="Simple GTK text editor."
arch=('i686' 'x86_64')
url="http://pronou.net/code/gcw/"
license=('WTFPL')
depends=('gtksourceview2')
makedepends=('intltool')
conflicts=('gcw-gtk3')
source=(${url}${pkgname}-${pkgver}.tar.xz)
sha256sums=('92fbabd3803e348b130e6e405df6241c19723d2a38cf62594379c54106ef3084')
#install=('gcw.install')
build() {
	cd "${pkgname}-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}

