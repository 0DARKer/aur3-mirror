# Editor by MoD
pkgname="gcw"
pkgver=0.9.2
pkgrel=1
pkgdesc="Simple GTK text editor."
arch=('i686' 'x86_64')
url="http://pronou.net/code/gcw/"
license=('WTFPL')
depends=('gtksourceview2')
makedepends=('intltool')
conflicts=('gcw-gtk3')
source=(${url}${pkgname}-${pkgver}.tar.xz)
sha256sums=('2a8f993725b50ca43af4914e87ececc405c8d1bce3489f339ef2844ca8139419')
#install=('gcw.install')
build() {
	cd "${pkgname}-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}

