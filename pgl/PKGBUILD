# Maintainer: Pierre Buard <pierre.buard+aur gmail com>
pkgname=pgl
pkgver=2.2.2
pkgrel=2
pkgdesc='PeerGuardian is a privacy oriented firewall application (GUI).'
url='http://sourceforge.net/projects/peerguardian/'
arch=('i686' 'x86_64')
depends=('cron' 'logrotate' 'wget' 'libnetfilter_queue' 'iptables' 'qt' 'polkit-qt')
optdepends=('unzip: for zipped blocklists'
	    'p7zip: for 7z blocklists'
	    'net-tools: to whitelist local IP addresses'
	    'networkmanager: to whitelist newly started network interfaces'
	    'smtp-forwarder: to send reports')
license=('GPL')
replace=('pgl-nogui')
conflicts=('blockcontrol' 'moblock' 'pgl-cli')
backup=('etc/pgl/allow.p2p'
	'etc/pgl/blocklists.list'
	'etc/pgl/pglcmd.conf'
	'etc/logrotate.d/pglcmd'
	'etc/logrotate.d/pgld')
source=(http://downloads.sourceforge.net/project/peerguardian/PeerGuardian%20Linux/${pkgver}/${pkgname}-${pkgver}.tar.gz
	service)
md5sums=('c623c92802281f69e51d140c8b1bb171'
	 '74d5988ef560db7e3e1d39fd08f660b2')
install=install
changelog=changelog

build() {
    cd ${srcdir}/${pkgname}-${pkgver}/
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --datarootdir=/usr/share \
		--with-initddir=/etc/rc.d --with-piddir=/run
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}/
    make DESTDIR=${pkgdir} install
    install -Dm644 ${srcdir}/service ${pkgdir}/usr/lib/systemd/system/pgl.service
}
