pkgname=pcsc-tools
pkgver=1.4.17
pkgrel=1
pkgdesc="Some tools to be used with smart cards and PC/SC"
arch=('i686' 'x86_64')
url="http://ludovic.rousseau.free.fr/softwares/pcsc-tools/"
license=('GPL')
depends=('pcsc-perl' 'cairo-perl' 'glib-perl' 'gtk2-perl')
source=(http://ludovic.rousseau.free.fr/softwares/pcsc-tools/$pkgname-$pkgver.tar.gz)
md5sums=('2767238e1e737f94d13a91bdab1174ca')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  make DESTDIR=$startdir/pkg/usr/ install || return 1
 }

