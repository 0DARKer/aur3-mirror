# Contributor: masutu <masutu dot arch at googlemail dot com>
# Maintainer: masutu <masutu dot arch at googlemail dot com>
pkgname=dino-git
pkgver=20100211
pkgrel=1
pkgdesc="A MIDI sequencer for GNU/Linux."
arch=('i686')
url="http://dino.nongnu.org/"
license=('GPL')
depends=('gtkmm' 'lash' 'libxml++' 'util-linux-ng' 'vte')
makedepends=('git')
provides=(dino)
conflicts=(dino)

_gitroot="git://git.sv.gnu.org/dino.git"
_gitname="dino"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  ./autogen.sh
  ./configure --prefix=/usr
  sed -i '26i\#include <stdint.h>' src/libdinoseq/controllerinfo.hpp 
  sed -i '29i\#include <stdio.h>' src/libdinoseq/pattern.cpp
  sed -i '25i\#include <stdio.h>' src/libdinoseq/sequencer.cpp
  sed -i '25i\#include <stdio.h>' src/libdinoseq/track.cpp
  make || return 1
  make DESTDIR="$pkgdir/" install
} 
