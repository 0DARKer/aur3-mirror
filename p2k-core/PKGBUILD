pkgname=p2k-core
pkgver=1.1
pkgrel=1
pkgdesc="Command-line utility to administrate P2K-based motorola phones"
arch=('i686' 'x86_64')
url="http://www.el-co.hu/dl/p2k-core.htm"
license=('GPL')
depends=('ncurses' 'libusb' 'readline')
source=(http://www.el-co.hu/dl/p2k-core-V_1.1.zip)
md5sums=('5dc812647a1efce546505ff09e27a361')

build() {
  cd $srcdir
  make || return 1
  install -Dm 755 $srcdir/p2k-core $pkgdir/usr/bin/p2k-core
}
