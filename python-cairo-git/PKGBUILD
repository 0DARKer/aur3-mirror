# Maintainer: Karol "Kenji Takahashi" Wozniak <wozniakk@gmail.com>

pkgname=python-cairo-git
pkgver=20121026
pkgrel=1
pkgdesc="Python bindings for the cairo graphics library. Git version."
arch=('i686' 'x86_64')
url="http://www.cairographics.org/"
license=('LGPL3')
depends=('python' 'cairo>=1.12')
makedepends=('git' 'pkg-config')
options=('!libtool')
provides=("python-cairo=1.10.0")
conflicts=('python-cairo')

_gitroot='git://git.cairographics.org/git/'
_gitname='pycairo'

build() {
  if [ -d ${srcdir}/$_gitname ]; then
    cd $srcdir/$_gitname
    git pull
  else
    cd $srcdir
    git clone $_gitroot$_gitname
    cd $_gitname
  fi

  python3 setup.py install --root=$pkgdir/ --optimize=1
}
