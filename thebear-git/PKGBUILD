# Maintainer: Guten <ywzhaifei at gmail dot com>

pkgname=thebear-git
pkgver=20120129
pkgrel=1
pkgdesc="a web front end to aria2."
arch=("i686" "x86_64")
url="http://sourceforge.net/p/thebear/home/Home"
license=("unknown")
depends=("git")
provides=("thebear")

_gitroot="git://git.code.sf.net/p/thebear/code"
_gitname="thebear"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  chmod 777 -R assets protected
}

package() {
  cd "srcdir/$_gitname-build"

  mkdir -p "$pkgdir/srv/http/thebear"
  cp -r * "$pkgdir/srv/http/thebear"
}

# vim:set ts=2 sw=2 et:
