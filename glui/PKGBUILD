# Contributor: ice-man <icemanf@gmail.com>
pkgname=glui
pkgver=2.36
pkgrel=1
pkgdesc="GLUI is a GLUT-based C++ user interface library which provides controls such as buttons, checkboxes, radio buttons, and spinners to OpenGL applications"
makedepends=('freeglut')
depends=('freeglut')
source=("http://downloads.sourceforge.net/glui/glui-2.36.tgz")
url="http://glui.sourceforge.net/"
arch=('i686')
md5sums=('9e8d506af9a9428dac09e8cd7bda7c1e')
license="GPL"

build() {
	cd ${startdir}/src/${pkgname}-${pkgver}/src
	
	echo -e "\nPATCHING MAKEFILE\n-------------------------------"
	echo $(pwd)
	patch -p0 < ../../../makefile.patch > /dev/null
	echo -e "makefile.patch applied\n"

	make setup || exit 0
	make lib/libglui.a || exit 0

	mkdir -p $startdir/pkg/usr/lib/
	mkdir -p $startdir/pkg/usr/include/ 
	mkdir -p $startdir/pkg/share/doc/glui-2.35/

	cp lib/libglui.a $startdir/pkg/usr/lib/
	cp include/GL/glui.h $startdir/pkg/usr/include/
	cp doc/glui_manual.pdf $startdir/pkg/share/doc/glui-2.35/
}

