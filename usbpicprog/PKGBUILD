# Maintainer: Techmeology <techmeology@techmeology.co.uk>
pkgname=usbpicprog
pkgver=130804
pkgrel=1
pkgdesc="Software for the USB PIC Programmer: usbpicprog"
arch=('any')
url="http://usbpicprog.org/"
license=('GPL')
depends=('wxgtk2.9')
replaces=('usbpicprog-beta')
source=(http://usbpicprog.org/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('54acea59b5a8b5983fa37f2518d0dd5c') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --with-wx-config=/usr/bin/wx-config-2.9
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
