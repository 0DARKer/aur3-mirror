# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

pkgname=helvetica-font
pkgver=r33.f4849dc
pkgrel=1
pkgdesc="Helvetica bitmap free font."
arch=(
	"$CARCH"
)
url="http://sixsixfive.deviantart.com/art/simpliX-346404452"
license=(
	"custom"
)

depends=()
optdepends=()
makedepends=(
	"git"
)
provides=(
	"${pkgname}=${pkgver}"
)
conflicts=(
	"${pkgname}"
)
replaces=(
	"${pkgname}"
)

source=(
	"${pkgname}::git+https://github.com/sixsixfive/themes.git"
)
md5sums=(
	"SKIP"
)
sha512sums=(
	"SKIP"
)

pkgver() {
	cd ${srcdir}/${pkgname}
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

_themename=simpliX

package() {
	# Create base directories
	install -dm755 ${pkgdir}/usr/share/licenses
	install -dm755 ${pkgdir}/usr/share/fonts
	
	# Change the current working directory
	cd ${srcdir}/${pkgname}/${_themename}
	
	# Helvetica font
	cp -R ./Extras/Helvetica-Bitmap/{100dpi,75dpi} ${pkgdir}/usr/share/fonts
	
	# Licence
	install -dm755 ${pkgdir}/usr/share/licenses/${pkgname}
	cp ${pkgdir}/usr/share/fonts/100dpi/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
	
	# Delete uneeded files
	rm -f ${pkgdir}/usr/share/fonts/{100dpi,75dpi}/COPYING
}