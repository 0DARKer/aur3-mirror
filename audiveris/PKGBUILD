# Maintainer: Simone Riva <simone.rva [at] gmail [dot] com>


pkgname=('audiveris')
pkgver=3.3
pkgrel=1
pkgdesc=('Audiveris is a complete music scanner going all the way from the scanned music sheet input to the MusicXML output')
arch=('i686' 'x86_64')
url="http://audiveris.kenai.com/"
license=('GPL3')
makedepends=('openjdk6' 'zip')
depends=('openjdk6' 'tesseract')

install=audiveris.install

source=('http://kenai.com/projects/audiveris/downloads/download/audiveris-3.3-full-20100609.zip' 
	'audiveris' 
	'audiveris.desktop'
	'Audiveris.svg' )

md5sums=( 'e72aa73a3de84ee37d9112035d8a861f' 
	  '357e7f42cb2ca648b38aba7b4c79f461' 
	  '29fe093a5f69e97d5c8ed9ded52267df' 
	  'c914cd17c9050c5accfb2c815eafcebf' )

build() {
	mkdir -p ${pkgdir}/opt/audiveris
	mkdir -p ${pkgdir}/usr/bin
	mkdir -p ${pkgdir}/usr/share/applications/
	mkdir -p ${pkgdir}/usr/share/icons/hicolor/scalable/apps/

	cp -r ${srcdir}/* ${pkgdir}/opt/audiveris
	cp audiveris ${pkgdir}/usr/bin
	chmod a+x ${pkgdir}/usr/bin/audiveris

	rm -f ${pkgdir}/opt/audiveris/audiveris-3.3-full-20100609.zip
	rm -rf ${pkgdir}/opt/audiveris/orc

	cp Audiveris.svg ${pkgdir}/usr/share/icons/hicolor/scalable/apps/
	cp audiveris.desktop ${pkgdir}/usr/share/applications/
	
}

