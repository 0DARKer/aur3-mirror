# Contributor: Peter Simons <simons@cryp.to>
pkgname=shhmsg
pkgver=1.4.1
pkgrel=1
pkgdesc="error message library (used by banner)"
arch=('i686' 'x86_64')
url='http://shh.thathost.com/pub-unix/'
license=('GPL')
groups=()
depends=()
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=( http://shh.thathost.com/pub-unix/files/${pkgname}-${pkgver}.tar.gz )
noextract=()
md5sums=('de300150851786eb19cb9b9ad234d7a2')

build() {
  cd "$srcdir/$pkgname-$pkgver" || return 1
  make OPTIM="$CFLAGS" dep || return 1
  make OPTIM="$CFLAGS" || return 1
  make OPTIM="$CFLAGS" INSTBASEDIR="$pkgdir/usr" install || return 1
}
