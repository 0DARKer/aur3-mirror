_pkgname=firefox-gtk3
pkgname=$_pkgname-bin
pkgver=33.0
pkgrel=1
pkgdesc="Standalone web browser from mozilla.org (GTK+ 3)"
arch=(x86_64)
license=(GPL)
url="https://bugzilla.mozilla.org/show_bug.cgi?id=627699"
depends=(libjpeg6)
makedepends=(rpmextract)
conflicts=(firefox-gtk3)
provides=(firefox-gtk3)
source=(http://copr-be.cloud.fedoraproject.org/results/stransky/FirefoxGtk3/fedora-rawhide-$arch/$_pkgname-$pkgver-$pkgrel.fc20/$_pkgname-$pkgver-$pkgrel.fc21.$arch.rpm)
md5sums=('3ba4222290abe892ee9377ffe1730352')

build() {
  cd $srcdir
}

package() {
  cd $srcdir
  mv usr/ "$pkgdir/"
}
