# $Id$
# Maintainer: monty <linksoft [at] gmx [dot] de>

_pkg=mongo-cxx-driver
_subpkg=legacy-0.0-26compat
pkgname=${_pkg}-${_subpkg}
pkgver=2.6.2
pkgrel=1
pkgdesc='Official MongoDB C++ driver (26compat).'
arch=('i686' 'x86_64')
url='http://www.mongodb.org'
license=(APACHE)
depends=('boost-libs' 'pcre' 'snappy' 'openssl' 'gperftools' 'libsasl')
makedepends=('scons' 'boost' 'readline' 'ncurses')
source=("https://github.com/mongodb/${_pkg}/archive/${_subpkg}-${pkgver}.tar.gz")
conflicts=("mongodb<2.6.0")
options=("staticlibs")
provides=("mongo-cxx-driver")

build() {
  cd ${pkgname}-${pkgver}

  scons \
    --use-system-boost \
    --use-system-pcre \
    --use-system-snappy \
    --use-system-tcmalloc \
    --use-sasl-client \
    --ssl \
    --sharedclient
}

package() {
  cd ${pkgname}-${pkgver}
  
  scons \
    --full \
    --use-system-boost \
    --use-system-pcre \
    --use-system-snappy \
    --use-system-tcmalloc \
    --use-sasl-client \
    --ssl \
    --sharedclient \
    --prefix="$pkgdir/usr" \
    install-mongoclient
}

sha512sums=('f85d7febbddacb8b6bd9e5c205e22217affaf67b4684e5b6198d0286e44f0b16cacdb1ea3c3d56cf661ab1180ff4995b0bb6137dd26e3abc1dfe66dca9b58e78')
