# Maintainer: Leo Zhao <zhao78977@gmail.com>

arch=('i686')
depends=('desktop-file-utils' 'libxt' 'mime-types' 'nss' 'shared-mime-info')
license=('MPL' 'GPL' 'LGPL')
pkgname=firefox-testing
_pkgname=firefox
pkgdesc='Standalone web browser from mozilla.org, beta build.'
url='http://www.mozilla.org/projects/firefox'
pkgver=3.6b5
pkgrel=1
md5sums=('0b642db5cd01503db4d3f7eb356d174d' 'bf9e00d8a6b1449e5a8de18ae98578ee' '1d4d0c9eac75665771a9b74fb448e474')


source=(
"ftp://ftp.mozilla.org/pub/$_pkgname/releases/$pkgver/linux-i686/en-US/$_pkgname-$pkgver.tar.bz2"
"$pkgname.desktop" "$pkgname-safe.desktop")

build() {
	cd $srcdir
#	uncomment this line to remove them if you want
#	rm -rf $_pkgname/{extensions,plugins,searchplugins} || return 1

	mkdir -p $pkgdir/{usr/{bin,share/{applications,pixmaps}},opt} || return 1
	cp -r $_pkgname $pkgdir/opt/$pkgname-$pkgver || return 1

	ln -s /opt/$pkgname-$pkgver/$_pkgname $pkgdir/usr/bin/$pkgname || return 1
	install -m644 $srcdir/{$pkgname.desktop,$pkgname-safe.desktop} $pkgdir/usr/share/applications/ || return 1
	install -m644 $srcdir/$_pkgname/icons/mozicon128.png $pkgdir/usr/share/pixmaps/${pkgname}-icon.png || return 1
}
