# Maintainer : Daniel YC Lin <dlin.tw at gmail>

pkgname=betaradio-git
pkgver=1.5.r15.g3d6c84e
pkgrel=1
arch=('i686' 'x86_64')
license=('GPL3')
pkgdesc="An easy way to listen to internet radio of Taiwan."
url="http://code.google.com/p/betaradio/"
depends=('gtk3' 'gstreamer' 'json-glib' 'libsoup' 'libltdl')
#'gstreamer0.10' 'hicolor-icon-theme')
#optdepends=('gstreamer0.10-plugins')
makedepends=('subversion'  'vala')
source=('repo::git+https://github.com/fourdollars/betaradio.git')
md5sums=('SKIP')
install=betaradio.install

pkgver() {
  cd repo
  git describe --long | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd repo
  #sed -i "s/-Werror //" configure.ac
  #autoreconf -i -f
  ./autogen.sh
  ./configure --prefix=$pkgdir/usr
  make
}

package() {
  cd repo
  make install
  rmdir $pkgdir/usr/lib $pkgdir/usr/include
}
# vim:et sw=2 ts=2 ai
