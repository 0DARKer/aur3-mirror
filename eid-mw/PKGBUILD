pkgname=eid-mw
pkgver=4.0.0
pkgrel=1
pkgdesc="eID MiddlewareS"
url="https://code.google.com/p/eid-mw/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('pcsclite')
makedepends=('autoconf' 'automake')
source=("https://eid-mw.googlecode.com/files/${pkgname}-${pkgver}-1135.tar.gz")
sha1sums=('c21d5f066f696e12f3b94513e4e01dc187b69ca5')
options=('!libtool')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    #./configure --prefix=/usr
    ./configure
    make
    make DESTDIR=${pkgdir} install
}
