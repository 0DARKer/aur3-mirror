pkgname=emerald0.9
pkgver=0.9.5
pkgrel=3
pkgdesc="Emerald window decorator (0.9 release version)"
arch=('i686' 'x86_64')
url="http://cgit.compiz.org/fusion/decorators/emerald"
license=('GPL')
depends=('compiz-dev' 'libwnck' 'xdg-utils' \
         'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('intltool')
optdepends=('emerald-themes')
options=(!libtool)
conflicts=('emerald' 'emerald-git')
provides=('emerald=0.9.5')
install=emerald.install
source=('http://cgit.compiz.org/fusion/decorators/emerald/snapshot/emerald-0.9.5.tar.gz')
md5sums=('SKIP')

build() {
  cd "$srcdir"/emerald-0.9.5
  LIBS+="-lm -ldl" ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$srcdir"/emerald-0.9.5
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}

