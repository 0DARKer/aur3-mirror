# Maintainer: Jakob Nixdorf <flocke [swirly thing] shadowice [dot] org>

pkgname=perl-poppler-datapatch-git
pkgver=20110124
pkgrel=1
pkgdesc="perl binding of poppler library, patched with new_from_data-patch"
depends=('perl>=5.10.0' 'glibc' 'poppler' 'cairo-perl')
makedepends=('perl-extutils-pkgconfig' 'git' 'patch')
provides=('perl-poppler' 'perl-poppler-git')
conflicts=('perl-poppler' 'perl-poppler-git')
license=('GPL' 'PerlArtistic')
url="http://search.cpan.org/dist/Poppler/"
source=(new_from_data.patch)
md5sums=('2c6fafc466b8ccccb1ea840840e39d31')
options=('force' '!emptydirs')
arch=(i686 x86_64)

_gitroot=https://github.com/c9s/perl-poppler.git
_gitname=perl-poppler

build()
{
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

	rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

	patch -Np1 -i ${srcdir}/new_from_data.patch

  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  
  # Remove .packlist and perllocal.pod files.
  find ${pkgdir} -name '.packlist' -delete
  find ${pkgdir} -name 'perllocal.pod' -delete

}
