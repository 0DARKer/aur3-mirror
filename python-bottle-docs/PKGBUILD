# Maintainer: Hilton Medeiros <medeiros.hilton@gmail.com>

pkgname=python-bottle-docs
_pkgname=bottle
pkgver=0.11.4
pkgrel=1
pkgdesc="A set of HTML documentation for the Bottle microframework"
arch=('any')
url="http://bottlepy.org/"
license=('MIT')
options=('docs' '!strip')
makedepends=('python2-sphinx')
source=("$_pkgname-$pkgver.tar.gz::https://github.com/defnull/bottle/archive/0.11.4.tar.gz")
md5sums=('cab1d6179f2a6573b868d769e0c9bcf9')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  sphinx-build2 docs html
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  install -d "$pkgdir/usr/share/doc/"
  cp -rf html "$pkgdir/usr/share/doc/python-$_pkgname"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
