# Maintainer: <grawity@gmail.com>
pkgname=xorriso
pkgver=1.1.2
pkgrel=1
pkgdesc='ISO 9660 Rock Ridge filesystem manipulator'
arch=(i686 x86_64)
optdepends=(acl readline attr zlib)
url="http://scdbackup.sourceforge.net/xorriso_eng.html"
license=("GPLv3")
source=("http://scdbackup.sourceforge.net/$pkgname-$pkgver.tar.gz")
sha1sums=('68ff2a9800a5a499016392db1e11568edd186d53')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr --sysconfdir=/etc
	make
}
package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
# vi: filetype=sh
