# Maintainer: <grawity@gmail.com>
pkgname=xorriso
pkgver=1.1.8
pkgrel=1
pkgdesc='ISO 9660 Rock Ridge filesystem manipulator'
arch=(i686 x86_64)
optdepends=(acl readline attr zlib)
url="http://scdbackup.sourceforge.net/xorriso_eng.html"
license=("GPLv3")
source=("http://scdbackup.sourceforge.net/$pkgname-$pkgver.tar.gz")
sha1sums=('dc4c7a3108bc2a8accab3da4ddb6f2426b9cc6e3')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr --sysconfdir=/etc
	make
}
package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
# vi: filetype=sh
