# Contributor: Leslie P. Polzer <polzer@gnu.org>
pkgname=symlinks
pkgver=1.2
pkgrel=1
pkgdesc="Symlinks utility program"
arch=(i686)
url="http://packages.debian.org/etch/symlinks"
license=('GPL')
depends=()
makedepends=()
source=(http://ftp.debian.org/debian/pool/main/s/symlinks/symlinks_1.2.orig.tar.gz)

build() {
  cd "$srcdir/symlinks-1.2.orig"

  gcc -Wall -Wstrict-prototypes -O2 -o symlinks symlinks.c

  install -D -m755 symlinks $pkgdir/usr/bin/symlinks
}

# vim:set ts=2 sw=2 et:
md5sums=('d6f4e2c103fe68259df3d08b24b94285')
sha1sums=('4aa3375b2c9e2f88ba129b829aa9020e65d5d71d')
