# Maintainer: Jose Riha <jose1711 gmail com>

pkgname=perl-uuid
_cpanname=uuid
pkgver=0.02
pkgrel=1
pkgdesc="UUID - Perl extension for using UUID interfaces as defined in e2fsprogs."
arch=('any')
url="http://search.cpan.org/~POTYL/${_cpanname}"
license=('unknown')
options=('!emptydirs')
depends=('util-linux' 'perl')
source=(http://search.cpan.org/CPAN/authors/id/B/BR/BRAAM/UUID-${pkgver}.tar.gz)
md5sums=('a834009b8916631054cf05085f213b06')

build() {
  cd $srcdir/UUID-${pkgver}
  sed -i '/^auto_install/d' Makefile.PL
  perl Makefile.PL
  make
}

package() {
  cd $srcdir/UUID-${pkgver}
  make DESTDIR=$pkgdir install
  find $pkgdir -name '.packlist' -delete
  find $pkgdir -name '*.pod' -delete
}
