# Contributor: Dave Reisner <d@falconindy.com>

pkgname=transset-df
pkgver=6
pkgrel=1
pkgdesc="transparency settings for X.org"
arch=('i686' 'x86_64')
url="http://forchheimer.se/transset-df/"
license=('custom')
depends=('libxcomposite' 'libxdamage' 'libxrender')
provides=('transset')
conflicts=('transset')
replaces=('transset')
source=("http://forchheimer.se/transset-df/$pkgname-$pkgver.tar.gz"
        "LICENSE")
md5sums=('3375d570adc9d875d7fc476d1a50d5a5'
         '8fea8210c4b586c174e652e64d3e579d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 transset-df "$pkgdir/usr/bin/transset-df"
  install -Dm644 "$srcdir/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
