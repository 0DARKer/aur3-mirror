# Maintainer:  Michael Kogan <michael dot kogan at gmx dot net>

pkgname=perl-net-dropbox-api
pkgver=1.7
pkgrel=1
pkgdesc="Net::Dropbox::API - Perl dropbox API interface"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~norbu/Net-Dropbox-API-${pkgver}/lib/Net/Dropbox/API.pm"
license=('GPL, PerlArtistic')
depends=('perl-common-sense' 'perl-data-random' 'perl-http-message' 'perl-json' 'perl-libwww' 'perl-mouse' 'perl-net-oauth' 'perl-uri')
source=(http://search.cpan.org/CPAN/authors/id/N/NO/NORBU/Net-Dropbox-API-${pkgver}.tar.gz)
md5sums=('8b9aad8d769e2b7548c1dd838dbe5291')
sha1sums=('656a937955d420555bd42b4e4fb7c99df2a26e5c')

build() {
    cd "$srcdir/Net-Dropbox-API-${pkgver}"
    perl Makefile.PL INSTALLDIRS=vendor
    make || return 1
    make DESTDIR=$pkgdir install || return 1
}
