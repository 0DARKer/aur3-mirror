pkgname=synaptiks
pkgver=0.6.1
pkgrel=2
pkgdesc="A touchpad tool for KDE"
arch=('any')
url="http://synaptiks.lunaryorn.de/"
license=('BSD')
depends=('kdebindings-python' 'kdebase-workspace'
  'xf86-input-synaptics' 'python2-udev' 'dbus-python' 'xdg-utils')
makedepends=('python2-distribute' 'kdesdk-scripts')
source=(http://pypi.python.org/packages/source/s/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('2a83bfd28a50b4e2fcd9587b51770425')
install=(synaptiks.install)

build() {
 cd "${srcdir}/${pkgname}-${pkgver}"
 python2 setup.py install --single-version-externally-managed --root "${pkgdir}"
 install -m755 -d "$pkgdir/usr/share/licenses/synaptiks/"
 install -m644 COPYING "$pkgdir/usr/share/licenses/synaptiks"
}
