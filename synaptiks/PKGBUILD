pkgname=synaptiks
pkgver=0.5.3
pkgrel=1
pkgdesc="A touchpad tool for KDE."
arch=('i686' 'x86_64')
url="http://synaptiks.lunaryorn.de/"
license=('BSD')
depends=('kdebindings-python' 'kdebase-workspace' 'xf86-input-synaptics' 'pyudev')
makedepends=('python2-distribute' 'kdesdk-scripts')
source=(http://pypi.python.org/packages/source/s/synaptiks/${pkgname}-${pkgver}.tar.gz)
md5sums=('e1f4f7934b3eb893e8377cd3a67d8847')

build() {
 cd ${srcdir}/${pkgname}-${pkgver}
 python2 setup.py install --single-version-externally-managed --root ${pkgdir}
}