pkgname=synaptiks
pkgver=0.4.0
pkgrel=1
pkgdesc="A touchpad tool for KDE."
arch=('i686' 'x86_64')
url="http://synaptiks.lunaryorn.de/"
license=('BSD')
depends=('kdebase-lib>=4.4' 'xf86-input-synaptics' 'libxi>=1.3' 'qt>=4.6' 'docbook-xml')
makedepends=('automoc4' 'cmake')
source=(http://bitbucket.org/lunar/synaptiks/downloads/$pkgname-$pkgver.tar.bz2)
md5sums=('1ab929c95aa5734122ba01295a01be6b')

build() {
  cd $srcdir/$pkgname-$pkgver

  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix) -DHAVE_XINPUT2=ON ..
  make
  make DESTDIR=$pkgdir install
}

