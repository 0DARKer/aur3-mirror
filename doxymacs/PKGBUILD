# Maintainer: Gleidson <gleidson.echeli@gmail.com>

pkgname=doxymacs
pkgver=1.8.0
pkgrel=1
pkgdesc="Use Doxygen from within {X}Emacs"
arch=('i686' 'x86_64')
url="http://doxymacs.sourceforge.net"
license=('GPL')
depends=('libxml2>=2.6.13')
makedepends=()
options=()
install=('doxymacs.install')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('a2c1750efdec955f42e410a18ebd4eb8')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}