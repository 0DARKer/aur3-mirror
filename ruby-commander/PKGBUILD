# Maintainer: Peter Richard Lewis <plewis@aur.archlinux.org>
_gemname=commander
pkgname=ruby-$_gemname
pkgver=4.1.5
pkgrel=1
pkgdesc="The complete solution for Ruby command-line executables."
arch=(any)
url="http://visionmedia.github.com/commander/"
license=('MIT')
depends=('ruby' 'ruby-highline')
makedepends=('rubygems')
source=("http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem")
noextract=($_gemname-$pkgver.gem)
sha256sums=('8caa6f8f961cfc70ceeb949dc650ff168283805f36b9022731af147ae5131d10')

package() {
  cd "$srcdir"
  # _gemdir is defined inside package() because if ruby[gems] is not installed on
  # the system, makepkg will exit with an error when sourcing the PKGBUILD.
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" \
    "$_gemname-$pkgver.gem"
}

# vim:set ts=2 sw=2 et:
