# Maintainer: Piotr Kempa <kosmici-atakuja at wp dot pl>

pkgname=run-mailcap
pkgver=3.46
pkgrel=1
pkgdesc="The mailcap script from Ubunt repositories for use with sup mail client"
url="http://packages.ubuntu.com/karmic/mime-support"
arch=('i686' 'x86_64')
license=('GPL')
depends=('perl')
conflicts=('mime-support')
makedepends=('deb2targz')
source=(http://de.archive.ubuntu.com/ubuntu/pool/main/m/mime-support/mime-support_$pkgver-1ubuntu1_all.deb)
md5sums=('b2831ad25b7470eab6ab22195e2c114b')

build() {
	install -d -m 0755 $pkgdir/usr/bin
	cd $srcdir
	deb2targz *.deb
	tar xaf *.gz
	install -m 0755 $srcdir/usr/bin/run-mailcap $pkgdir/usr/bin/
}
