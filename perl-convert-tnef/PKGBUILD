pkgname='perl-convert-tnef'
pkgver='0.17'
pkgrel='2'
pkgdesc='Perl module to read TNEF files'
url='http://search.cpan.org/~dougw/Convert-TNEF-0.17/'
arch=('any')
depends=('perl>=5.8.4' 'perl-io-stringy' 'perl-mime-tools')
source=("http://search.cpan.org/CPAN/authors/id/D/DO/DOUGW/Convert-TNEF-${pkgver}.tar.gz")
md5sums=('31cddf42fae9495b4a686b17ec68d7e0')
install="${pkgname}.install"
license=()

build()
{

	cd ${startdir}/src/Convert-TNEF-${pkgver}

	eval $(perl -V:archname)

	perl Makefile.PL INSTALLARCHLIB=/usr/lib/perl5/current/${archname} INSTALLSITELIB=/usr/lib/perl5/site_perl/current INSTALLSITEARCH=/usr/lib/perl5/site_perl/current/${archname}

	make || return 1

	make DESTDIR=${startdir}/pkg install || return 1

	find ${startdir}/pkg -name '.packlist' -exec rm -f {} \;
	find ${startdir}/pkg -name 'perllocal.pod' -exec rm -f {} \;

}
