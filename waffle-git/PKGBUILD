# Chris Forbes
# based on the 1.2.2 PKGBUILD from Chad Versace

pkgname='waffle-git'
pkgver='20130610'
pkgrel=1
pkgdesc='a library for choosing window system and OpenGL API at runtime'
arch=('i686' 'x86_64')
url='http://people.freedesktop.org/~chadversary/waffle'
license=('BSD')

provides=(waffle)
conflicts=(waffle)
depends=(
  'libgl' # for GLX
  'libegl'
  'libx11'
  'libxcb'
  )
makedepends=(
  'cmake'
  'xcb-proto'
  )

_gitroot='git://people.freedesktop.org/~chadversary/waffle'
_gitname="waffle"

build() {
   msg "Connecting to GIT server...."

   if [ -d $startdir/src/$_gitname ] ; then
      cd $_gitname && git pull origin
      msg "The local files are updated."
   else
      git clone $_gitroot
   fi

   cd "${startdir}/src/${_gitname}"

  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DCMAKE_BUILD_TYPE=Release \
    -Dwaffle_has_glx=1 \
    -Dwaffle_has_x11_egl=1 \
    -Dwaffle_has_wayland=0 \
    -Dwaffle_build_examples=0
  make
}

package() {
   cd "${startdir}/src/${_gitname}"
  make DESTDIR="$pkgdir/" install
  install -m755 -d "$pkgdir/usr/share/licenses/$pkgname"
  install -m644 "$pkgdir/usr/share/doc/waffle-1/LICENSE.txt" \
                "$pkgdir/usr/share/licenses/$pkgname/LICENSE.txt"
}

# vim:set ts=2 sw=2 et:
