# Contributor: hb <hb.at.music-nerds.dot.net>

pkgname=scgraph
pkgver=24112008
pkgrel=1
pkgdesc="A 3D graphics server for SuperCollider"
arch=('i686')
url="http://tapas.affenbande.org/wordpress/?page_id=76"
license=('GPL')
depends=('supercollider' 'glew' 'qt' 'boost' 'graphicsmagick')
source=(http://tapas.affenbande.org/scgraph/scgraph-svn-nov_24_2008.tgz)
md5sums=('27273368b3400f94efb4ce4a26e98622')
install=(scgraph.install)

build() {
  cd $startdir/src/$pkgname-svn
  make
  make PREFIX=/usr QTDIR=/usr HAVE_JACK=1 HAVE_SHADERS=1 HAVE_GLEW=1  || return 1
  make PREFIX=$startdir/pkg/usr install
}
