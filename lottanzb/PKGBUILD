# Contributor: ianux <ianux@free.fr>
pkgname=lottanzb
pkgver=0.5.4
pkgrel=2
pkgdesc="GUI for HellaNZB written in PyGTK"
arch=('i686' 'x86_64')
url="http://www.lottanzb.org/"
license=('GPL')
depends=('gtk2' 'hellanzb' 'kiwi' 'python2' 'pygtk')
makedepends=('intltool')
optdepends=('pyopenssl: for SSL encryption support'
	    'unrar: for automatic extraction of downloads')
source=(http://www.lottanzb.org/releases/$pkgname-$pkgver.tar.gz)
md5sums=('2599f130260c6aa5fdfb541bea912f63')
sha256sums=('6b31ee602b3d99e9fd6912e13af67448e8a5a84f112f7599c54b4ebdba77f1dd')
install=${pkgname}.install

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py build || return 1
  python2 setup.py install --packaging-mode --root=${startdir}/pkg --prefix=/usr
}
