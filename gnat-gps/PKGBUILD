# Contributor: Patrick Kelly <kameo76890@gmail.com>

pkgname="gnat-gps"
pkgver=4.3.1
pkgrel=1
pkgdesc="GPS, the GNAT Programming Studio, is a cutting-edge Free Software IDE that streamlines the interaction between developers and their software. With its intuitive interface, GPS is easy to use, simplifying source navigation and highlighting the fundamental ideas in the program. By displaying core application structures, such as call graphs, program entity graphs, and project dependencies, GPS facilitates the development of systems. GPS helps construct reliable code while providing the same interface and behavior across a variety of platforms. Designed by programmers for programmers, GPS is a new kind of IDE 	that offers the experience of designing software in a uniquely comfortable environment."
arch=('i686' 'x86_64')
url="http://libre.adacore.com/libre/tools/gps/"
license=('GPL')
groups=("ada-dev")
depends=("gcc" "gcc-ada" "gtkada" "xml-ada")
makedepends=("")
optdepends=("subversion" "cvs" "git")
provides=("gnat-gps")
conflicts=("gnat-gps")
replaces=("")
backup=("")
options=("")
install=
source=("http://www.gfortran.org/download/linux/src/gps-$pkgver-src.tgz")
noextract=("")
md5sums=("86ff44d914acd8720adc702b26de893e")

build() {
	cd gps-$pkgver
	./configure || return 1
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1 
}
