#Mantainer: M0Rf30
pkgname=aliwe-git
pkgver=47.ec6842c
pkgrel=1
pkgdesc="A WPA passphrase generator for AGPF Alice Routers written in C (WPA script called alish is included)"
arch=('i686' 'x86_64')
url="https://github.com/M0Rf30/aliwe"
license=('GPL3')
depends=(openssl)
makedepends=('git' 'make')
source=('aliwe::git://github.com/M0Rf30/aliwe.git')

build() {
  cd aliwe
  make || return 1
}

package(){
  cd aliwe
  make DESTDIR=$pkgdir install
  rm -rf "$srcdir/$_gitname-build"
}

pkgver() {
  cd aliwe
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

md5sums=('SKIP')
