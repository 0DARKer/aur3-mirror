# Contributor: William Rea <sillywilly@gmail.com>
pkgname=pam_p11
pkgver=0.1.2
pkgrel=1
pkgdesc="PAM module for using crpytographic tokens such as smart cards and usb crypto tokens for authentication"
url="http://www.opensc-project.org/pam_p11"
license="LGPL"
depends=('pam' 'libp11')
source=(http://www.opensc-project.org/files/pam_p11/pam_p11-$pkgver.tar.gz)
md5sums=('de550f9d7cf921a7b8e35901e6bbfa25')

build() {
  cd $startdir/src/pam_p11-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
