pkgname=deflemask
pkgver=9e
pkgrel=1
pkgdesc="A Multi-System music tracker (Genesis/MegaDrive, NES/Famicom (nsf), Commodore 64 (sid), and many others)"
arch=('i686', 'x86_64')
url='http://www.delek.com.ar/deflemask'
license=('unknown')
depends=(sdl freeglut)

if test "$CARCH" == x86_64; then
  depends+=(lib32-sdl)
fi

source=(
http://www.delek.com.ar/soft/deflemask/DefleMask_Linux.tar.gz 
launcher.sh
)
md5sums=(
'0c3948b84755233ee14aff4b32fa6888'
'b34aaa4b6b8abb3f38ea49c52121b10b'
)

package() {
  install -d $pkgdir/{opt/,usr/bin/}
  mv "$srcdir" "$pkgdir/opt/$pkgname"
  install -D -m755 $pkgdir/opt/$pkgname/launcher.sh $pkgdir/usr/bin/$pkgname
  chmod 777 $pkgdir/opt/$pkgname/config.ini
  rm $pkgdir/opt/$pkgname/{launcher.sh,DefleMask_Linux.tar.gz}

}

