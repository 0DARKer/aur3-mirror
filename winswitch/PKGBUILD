# Maintainer: F0ruD <fzerorubigd[at]gmail[dot]com>

pkgname=winswitch
pkgver=0.11.1
pkgrel=1
pkgdesc="Window-Switch is a client server tool to start and control virtual desktops"
arch=('i686' 'x86_64')
url="http://winswitch.org/"
license=('GPL-3')
makedepends=('python2' 'pygtk' 'pycrypto' 'twisted' 'pyasn1')
source=(http://winswitch.org/src/winswitch-${pkgver}.src.tar.bz2
	http://dl.dropbox.com/u/17051717/pkg/share.zip)
md5sums=('602f673ada6bca247ced3e3d5663af85'
	 'dc05d26a0f064a325648162eb679daab')


build() {
  cd $srcdir/winswitch-${pkgver}/
  python2 ./setup.py build
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/lib
  mkdir $pkgdir/usr/lib/python2.7
  mkdir $pkgdir/usr/lib/python2.7/site-packages
  cd build
  cd lib 
  cp -R ./winswitch   $pkgdir/usr/lib/python2.7/site-packages
  cd ..
  cp -R ./scripts-2.7  $pkgdir/usr
  mv $pkgdir/usr/scripts-2.7 $pkgdir/usr/bin
  cp -R $srcdir/share $pkgdir/usr
 }

