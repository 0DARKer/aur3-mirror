# Maintainer: F0ruD <fzerorubigd[at]gmail[dot]com>

pkgname=winswitch
pkgver=0.11.2
pkgrel=1
pkgdesc="Window-Switch is a client server tool to start and control virtual desktops"
arch=('i686' 'x86_64')
url="http://winswitch.org/"
license=('GPL-3')
makedepends=('python2' 'pygtk' 'pycrypto' 'twisted' 'pyasn1' 'rpmextract')
source=(http://winswitch.org/dists/rpm/generic/winswitch-${pkgver}-${pkgrel}.noarch.rpm
        winswitch.desktop)
md5sums=('a88d89de3eac5b81eaff42cebab38bfa'
         'e69524316855a4e9b30a4b56bc169cc3')

build() {
  cd $srcdir/
  rpmextract.sh ./winswitch-${pkgver}-${pkgrel}.noarch.rpm
  mv $srcdir/usr $pkgdir/
  mv $srcdir/etc $pkgdir/
  mv $pkgdir/usr/lib/python2.5 $pkgdir/usr/lib/python2.7
  echo -e "#!/bin/bash \npython2 /usr/bin/winswitch_applet $@" >> $pkgdir/usr/bin/winswitch_applet_run
  chmod 755 $pkgdir/usr/bin/winswitch_applet_run
  rm $pkgdir/usr/share/applications/winswitch.desktop 
  cp $srcdir/winswitch.desktop $pkgdir/usr/share/applications/
 }

