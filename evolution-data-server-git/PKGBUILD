# $Id: PKGBUILD 176001 2013-01-25 17:18:47Z ioni $
# Maintainer: Jan de Groot <jgc@archlinux.org>

_pkgname=evolution-data-server
pkgname=$_pkgname-git
pkgver=20130214
pkgrel=1
pkgdesc="Centralized access to appointments and contacts"
arch=('i686' 'x86_64')
depends=('gnome-online-accounts' 'nss' 'krb5' 'libgweather' 'libical' 'db' 'libgdata' 'libaccounts-glib' 'libsignon-glib' 'json-glib' 'rest')
makedepends=('intltool' 'gperf' 'gobject-introspection' 'vala' 'git')
options=('!libtool')
url="http://www.gnome.org"
license=('GPL')
conflicts=('evolution-data-server')
replaces=('evolution-data-server')
provides=('evolution-data-server')
install=$_pkgname.install

_gitroot=http://git.gnome.org/browse/evolution-data-server
_gitname=evolution-data-server

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  
  ./autogen.sh --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --with-openldap=yes \
      --libexecdir=/usr/lib/evolution-data-server \
      --with-krb5=/usr --with-libdb=/usr \
      --enable-vala-bindings
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="${pkgdir}" install
  rm -rf "$srcdir/$_gitname-build"
}
