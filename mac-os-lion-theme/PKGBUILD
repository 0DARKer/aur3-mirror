# Maintainer: dale mallion <dale.mallion@gmail.com>
pkgname=mac-os-lion-theme
pkgver=2.0
pkgrel=1
epoch=
pkgdesc="MAC OS X Lion Theme For Ubuntu 12.4_LTS Included Theme,Icons and cursors"
arch=('any')
url="http://mbossg.deviantart.com/#/d4yqyle"
license=('unknown')
source=('http://205.196.123.142/drkb18ak4cpg/29bfs3l9lbt42cf/Mac+OS+X+Lion+Theme+v2+for+Ubuntu+12.04_lts.tar')
md5sums=('fd64896db0e0bd06fe3b6a9fd3278a57')

build() {
  cd "$srcdir/Mac OS X Lion Theme for Ubuntu 12.04_lts"
  mkdir -p "${pkgdir}"/usr/share/themes
  mkdir -p "${pkgdir}"/usr/share/icons

  cp -rf themes/Lion\ By\ MB0SS\ v2/ "${pkgdir}"/usr/share/themes/
  cp -rf icons/Icon\ Lion\ By\ MB0SS\ v2/ "${pkgdir}"/usr/share/icons/
  cp -rf icons/Lion\ By\ MB0SS/ "${pkgdir}"/usr/share/icons/

  chmod 755 -R "$pkgdir/usr/share/themes"
  chmod 755 -R "$pkgdir/usr/share/icons"
}
