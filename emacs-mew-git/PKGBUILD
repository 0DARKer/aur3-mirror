# Contributor: L42y <423300@gmail.com>
pkgname=emacs-mew-git
pkgver=20121105
pkgrel=1
arch=('x86_64' 'i686')
pkgdesc="Mew is a mail reader for Emacs"
url="http://www.mew.org/"
license=('custom')
depends=('emacs' 'ruby')
conflicts=('emacs-mew')
provides=('emacs-mew')
source=()
md5sums=()
install=emacs-mew-git.install

_gitroot="git://github.com/kazu-yamamoto/Mew.git"
_gitname="mew"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  ./configure --prefix=/usr
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
  install -D -m644 $srcdir/$_gitname-build/00copyright \
    $pkgdir/usr/share/licenses/emacs-mew-git/00copyright 
}
