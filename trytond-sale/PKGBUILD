pkgname=trytond-sale
_pkgname=trytond_sale
pkgver=2.2.1
_pkgdir=2.2
pkgrel=1
pkgdesc="The sale module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.2' 'trytond-company>=2.2' 'trytond-party>=2.2' 'trytond-stock>=2.2' 'trytond-account>=2.2' 'trytond-product>=2.2' 'trytond-account_invoice>=2.2' 'trytond-workflow>=2.2' 'trytond-currency>=2.2' 'trytond-account_product>=2.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("e065e0a4b57954618d8505d8628592b1")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir
}