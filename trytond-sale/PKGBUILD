pkgname=trytond-sale
_pkgname=trytond_sale
pkgver=2.4.0
_pkgdir=2.4
pkgrel=2
pkgdesc="The sale module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.4' 'trytond-company>=2.4' 'trytond-party>=2.4' 'trytond-stock>=2.4' 'trytond-account>=2.4' 'trytond-product>=2.4' 'trytond-account_invoice>=2.4' 'trytond-currency>=2.4' 'trytond-account_product>=2.4')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("07696f80043a5b62ae5509b4c789d226")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python setup.py install --root=$pkgdir
}