arch=('any')
license=('GPL2')
pkgname=autoflv2x264
pkgver=2.4
pkgrel=3
pkgdesc="Mass convert flv to x264 using handbrake with this handy script by graysky."
depends=('perl' 'mediainfo>=0.7.2' 'handbrake-cli')
url=http://aur.archlinux.org/packages.php?ID=35071
source=("https://github.com/graysky2/autoflv2x264/raw/master/$pkgname-source.tar.xz")
sha256sums=('fd79873ed5870e6d97fe8d4a73890e0f2ed1e3691f46b2587d4c3b430f0d7452')

package() {
	cd "$srcdir/$pkgname-source"
	install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
}
