pkgname=db4o
pkgver=8.0
pkgrel=1
pkgdesc="Object relational DBMS for Java, JavaFX, and Android." 
arch=('i686' 'x86_64')
url="http://www.db4o.com"
license=('GPL2')
depends=('java-runtime')
source=(http://www.db4o.com/downloads/$pkgname-$pkgver-java.zip)
sha1sums=('33321ad7c36103b5166c0eb4719ed1087cf6d028')


build() {
  mkdir -p $pkgdir/usr/share/java/$pkgname 
  cp -a $srcdir/$pkgname-$pkgver/* $pkgdir/usr/share/java/$pkgname/
}

