# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=thunar-devel
pkgver=1.1.6
pkgrel=1
pkgdesc="New modern file manager for Xfce (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://thunar.xfce.org"
groups=('xfce4-devel') 
depends=('libexif' 'xfce4-panel-devel' 'hicolor-icon-theme' 'pcre' 'udev' 'libnotify')
makedepends=('intltool' 'pkgconfig' 'xfce4-dev-tools-devel')
conflicts=('thunar' 'thunar-git')
replaces=('thunar' 'thunar-git')
options=('!libtool')
install=thunar.install
source=(http://archive.xfce.org/src/xfce/thunar/1.1/Thunar-${pkgver}.tar.bz2)
md5sums=('a96fdbc0b3d422f864d50374b5d6be41')

build() {
  cd ${srcdir}/Thunar-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static \
    --enable-exif --enable-pcre
  make
}

package() {
	cd ${srcdir}/Thunar-${pkgver}
	make DESTDIR=${pkgdir} install
}
