pkgname='pypy-pip'
pkgver=1.3.1
pkgrel=1
pkgdesc="An easy_install replacement for installing pypi python packages"
url="http://www.pip-installer.org/"
arch=('any')
license=('MIT')
depends=('pypy' 'pypy-distribute')
source=(http://pypi.python.org/packages/source/p/pip/pip-${pkgver}.tar.gz)

package() {
  cd "$srcdir/pip-$pkgver"
  pypy setup.py build
  #pypy setup.py install --prefix=/usr --root="$pkgdir"
  pypy setup.py install --root="$pkgdir"

  install -D -m755 "$pkgdir/opt/pypy/bin/pip" "$pkgdir/usr/bin/pip-pypy"
  sed -i "s|#!/usr/bin/env python$|#!/usr/bin/env python2|" \
    ${pkgdir}/opt/pypy/site-packages/pip/__init__.py

  install -D -m644 LICENSE.txt \
	  "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('cbb27a191cebc58997c4da8513863153')
sha256sums=('145eaa5d1ea1b062663da1f3a97780d7edea4c63c68a37c463b1deedf7bb4957')
