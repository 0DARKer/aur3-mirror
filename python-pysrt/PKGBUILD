# Maintainer: Veli-Jussi Raitila <vjr@iki.fi>

pkgname=python-pysrt
_pkgname=pysrt
pkgver=0.4.1
pkgrel=1
pkgdesc="A Python library used to edit or create SubRip files"
arch=(any)
url="http://pypi.python.org/pypi/pysrt"
license=('GPL3')
depends=('python2' 'python2-chardet')
makedepends=('python2-distribute')

source=(http://pypi.python.org/packages/source/p/pysrt/${_pkgname}-${pkgver}.tar.gz)
md5sums=('f385c1a2b8c4268f58734bf9559ef7b3')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  # Remove tests
  rm -rf tests
  
  python2 setup.py install --root="${pkgdir}" --optimize=1
}
