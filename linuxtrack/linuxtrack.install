post_install() {
getent group uinput >/dev/null 2>&1 ||  groupadd uinput 
&>/dev/null
modprobe uinput
udevadm control --reload-rules
}

post_upgrade() {
udevadm control --reload-rules
}

post_remove() {
if getent group uinput >/dev/null 2>&1; then
        groupdel uinput
fi
udevadm control --reload-rules
}
