# Maintainer: Daniel Wallace < daniel.wallace at gatech.edu
# Contributor: Patryk Rzucidlo (@PTKDev) <ptkdev@gmail.com>

pkgname=androidscreencast-git
_pkgname=androidscreencast
pkgver=20120317
pkgrel=1
pkgdesc="Desktop app to control an android device remotely"
arch=('i686' 'x86_64')
url="http://code.google.com/p/androidscreencast/"
license=('Apache License 2.0')
depends=('java-runtime>=7' 'android-sdk' 'icedtea-web-java7')
makedepends=('git')
provides=('androidscreencast')
conflicts=('androidscreencast')
source=(androidscreencast)


_gitroot="git://github.com/PTKDev/$_pkgname.git"
_gitname="$_pkgname-dir"
build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build/"
  install -d $pkgdir/usr/shar/icons/gnome/scalable/apps/
  install -D icons/android.png $pkgdir/usr/shar/icons/gnome/scalable/apps/
  install -d androidscreencast.jnlp $pkgdir/opt/androidscreencast/
  install -Dm755 src/androidscreencast.jnlp $pkgdir/opt/androidscreencast/
  install -d $pkgdir/usr/shar/applications/
  install -Dm755 src/Android\ Screencast.desktop $pkgdir/usr/shar/applications/
  install -Dm755 $srcdir/$_pkgname $pkgdir/usr/bin/$_pkgname
}

# vim:set ts=2 sw=2 et:

md5sums=('55ce753d142d5f0825db3034d54f10e1')
