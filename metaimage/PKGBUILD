pkgname="metaimage"
pkgver=1.3.2
pkgrel=1
pkgdesc="Batch-proccessing metadata for image files"
arch=('any')
url="https://code.google.com/p/metaimage"
license=('GPL3')
source=("https://metaimage.googlecode.com/archive/108d5ec12b80fbaecc3df7154ccea51bc57d5628.zip")
depends=(python python-pytz python-gobject libgexiv2)
md5sums=('SKIP') # zips from google code seems to differ for each download

package() {
  cd ${srcdir}/${pkgname}-*
  sh install.sh ${pkgdir}/usr
}
