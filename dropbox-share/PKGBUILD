pkgname=dropbox-share
pkgver=0.5.5
pkgrel=1
pkgdesc="A Nautilus script for easily sharing files using Dropbox"
arch=any
url="https://launchpad.net/dropbox-share"
license=('GPL3')
depends=('nautilus' 'dropbox-cli' 'nautilus-dropbox' 'libnotify' 'xclip' 'gvfs' 'python2' 'sqlite3')
source=(https://launchpad.net/~nilarimogard/+archive/webupd8/+files/${pkgname}_${pkgver}-1~webupd8~oneiric.tar.gz)
#sha1sums=('a32249097ac001050701333508ea4dd95e70e6b5')
sha256sums=('cd029f98bd5ae7bf4d612b9bdc7932af6f3a4cacde184fb778bbefd899af01fa')
install='dropbox.install'

build() {
	cd $srcdir/$pkgname
	sed -i 's/python/python2/g' bin/dropbox-index
	install -d $pkgdir/usr/bin/
	install -d $pkgdir/usr/share/nautilus-scripts/
	install bin/dropbox-index $pkgdir/usr/bin/
	install "Dropbox Share" $pkgdir/usr/share/nautilus-scripts/
	install "Dropbox Unshare" $pkgdir/usr/share/nautilus-scripts/
}