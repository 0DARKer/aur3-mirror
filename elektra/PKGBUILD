# PKGBUILD update by Xavier corredorl (epsilom) 2009

pkgname=elektra
pkgver=0.7.1
pkgrel=1
pkgdesc="Elektra is a universal hierarchical configuration store"
url="http://www.libelektra.org/"
license="BSD"
arch=('i686' 'x86_64')
depends=('libxml2')
makedepends=('docbook-xsl')
source=(ftp://ftp.markus-raab.org/elektra/$pkgname-$pkgver.tar.gz)
md5sums=('42a9a29168d730168b56a7c1064ee802')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure \
    --prefix=/usr \
    --libdir=/lib \
    --bindir=/bin \
    --sysconfdir=/etc \
    --with-docbook=/usr/share/xml/docbook
  make || return 1
  make DESTDIR=$startdir/pkg install
  
  mkdir -p $startdir/pkg/usr/share/licenses/$pkgname
  cp COPYING $startdir/pkg/usr/share/licenses/$pkgname/
}
