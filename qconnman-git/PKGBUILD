# Maintainer: Rob McCathie <archaur at rmcc dot com dot au>

pkgname=qconnman-git
pkgver=20130706
pkgrel=2
pkgdesc="QConnman Library (Qt)"
arch=('i686' 'x86_64')
url="https://bitbucket.org/ossystems/qconnman"
license=('LGPL2.1')
depends=('connman' 'qt4')
makedepends=('git')

_gitroot=https://bitbucket.org/ossystems/qconnman.git
_gitname=qconnman

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."
  
  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
    cd "$_gitname"
  fi
  
  qmake-qt4 PREFIX=/usr
  make
}

package() {
  cd "$srcdir"/"$_gitname"
  make INSTALL_ROOT="$pkgdir" install
}
