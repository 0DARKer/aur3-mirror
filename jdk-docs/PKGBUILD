pkgname=jdk-docs
pkgver=6u18
pkgrel=3
pkgdesc="Java SE Development Kit Documentation 6"
arch=('any')
url="http://java.sun.com/"
license=('custom')
options=('docs')
source=('http://www.ms.mff.cuni.cz/~kuceo9am/archlinux/jdk-6u18-docs.zip')
md5sums=('722df1b49add4499c933b8c0f2fe2af9')
#source=('http://cds.sun.com/is-bin/INTERSHOP.enfinity/WFS/CDS-CDS_Developer-Site/en_US/-/USD/VerifyItem-Start/jdk-6u18-docs.zip?BundledLineItemUUID=HEtIBe.mlxoAAAEm9iQB5FpJ&OrderID=K_lIBe.mcJAAAAEm7CQB5FpJ&ProductID=IH5IBe.oxGoAAAEm8NVkwg.j&FileName=/jdk-6u18-docs.zip')

build(){
  cd "$srcdir/docs" || return 1
  mkdir -p "$pkgdir/usr/share/doc/java" || return 1
  cp -rf * "$pkgdir/usr/share/doc/java" || return 1
}
