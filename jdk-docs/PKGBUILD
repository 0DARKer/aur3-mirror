pkgname=jdk-docs
pkgver=7.17
pkgrel=1
pkgdesc="Java SE Development Kit Documentation 7"
arch=('any')
url="http://java.sun.com/"
license=('custom')
options=('docs' '!strip')
source=('http://download.oracle.com/otn-pub/java/jdk/7u17-b02/jdk-7u17-apidocs.zip')
md5sums=('81291eb34f0ed38cab84476d38b383d1')

build(){
  cd "$srcdir/docs"
  mkdir -p "$pkgdir/usr/share/doc/java"
  cp -rf * "$pkgdir/usr/share/doc/java"
}
