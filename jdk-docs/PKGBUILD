# Contributor: Ondrej Kucera <ondrej.kucera@centrum.cz>

pkgname=jdk-docs
pkgver=8.0
_realver=8
_buildnum=b132
pkgrel=1
pkgdesc="Java SE Development Kit Documentation 8"
arch=("any")
url="http://www.oracle.com/technetwork/java/index.html"
license=("custom")
options=("!strip" "docs" "libtool" "staticlibs" "!zipman")
source=("http://download.oracle.com/otn-pub/java/jdk/$_realver-$_buildnum/jdk-$_realver-apidocs.zip" "LICENSE")
sha256sums=('3de88cc21051c3a2e94a7def9e937208fec94ed1423dcf7611e26b8a28f00b45'
            '14dc1953902010f7b48891e795183b39c048b19881815eec6a57cf3d62631ab7')
noextract=("jdk-$_realver-apidocs.zip")

package() {
  mkdir -p "$pkgdir/usr/share/doc"
  bsdtar -xf "$srcdir/jdk-$_realver-apidocs.zip" -C "$pkgdir/usr/share/doc/"
  mv "$pkgdir/usr/share/doc/docs" "$pkgdir/usr/share/doc/java"
  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
