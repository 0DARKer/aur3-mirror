# Contributor: Carlo Casta <carlo.casta@gmail.com>
pkgname=pidgin-extended-blist-sort
_pkgname=extended_blist_sort
_sfpname=p-extblistsort
pkgver=1.6
pkgrel=1
pkgdesc="A plugin for fine-grained sorting of buddy list"
arch=('i686' 'x86_64')
url="http://p-extblistsort.sourceforge.net/"
license=('GPL')
depends=('pidgin')
options=(!libtool)
source=(http://downloads.sourceforge.net/sourceforge/$_sfpname/$_pkgname-$pkgver.tar.gz)
md5sums=('6df09b1572c06ada8276fb8bd7f4968d')

build() {
  cd "$startdir/src/$_pkgname-$pkgver"
  ./configure --prefix=/usr --disable-dependency-tracking
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
