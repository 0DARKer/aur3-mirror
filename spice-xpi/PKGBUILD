# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=spice-xpi
pkgver=2.2
_rpmrel=2.3
pkgrel=$_rpmrel
pkgdesc="SPICE extension for Mozilla"
arch=('i686' 'x86_64' )
url="http://redhat.com"
license=('GPL')
depends=('qspice-client' 'log4cpp')
makedepends=('gcc' 'zip' 'xulrunner' 'libx11' 'automake' 'rpmextract')
options=()
install=
changelog=
source=(ftp://ftp.redhat.com/pub/redhat/linux/enterprise/5Client/en/os/SRPMS/$pkgname-$pkgver-$_rpmrel.el5_5.src.rpm arch-fixes.patch)
noextract=()
md5sums=('c241e0bf08783a9bc57e50251787e255')

build() {
  cd $srcdir
  rpmextract.sh ${pkgname}-${pkgver}-$_rpmrel.el5_5.src.rpm
  tar xjf $pkgname-$pkgver.tar.bz2

  cd "$srcdir/$pkgname-$pkgver"
  patch -p1 -i ../spice-xpi-2.2-npruntime.patch
  patch -p1 -i ../spice-xpi-2.2-sec.patch
  patch -p1 -i ../arch-fixes.patch
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
md5sums=('b6baa02212170cb24c43bc4b48ced198'
         'b17230339f8a4af452d5363b784a0819')
