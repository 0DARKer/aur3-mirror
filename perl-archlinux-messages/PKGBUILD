pkgname='perl-archlinux-messages'
pkgver='0.02'
pkgrel='1'
pkgdesc="Display messages on the terminal Archlinux style"'!'""
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Archlinux-Messages'
source=('http://search.cpan.org/CPAN/authors/id/J/JU/JUSTER/Archlinux-Messages-0.02.tar.gz')
md5sums=('b6e0a1aa976507187d256a97ca7d7361')

build() {
  DIST_DIR="${srcdir}/Archlinux-Messages-0.02"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&


    perl Build.PL --installdirs=vendor --destdir="$pkgdir" &&
    perl Build &&
    perl Build test &&
    perl Build install;

  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
