post_install() {
	       mktexlsr
	       updmap-sys --enable Map MinionPro.map
	       updmap-sys --enable Map MyriadPro.map
	       updmap-sys --enable MixedMap MnSymbol.map
	       }
post_upgrade() {
	       post_install	
}

post_remove() {
	       updmap-sys --disable  MinionPro.map
	       updmap-sys --disable  MyriadPro.map
	       updmap-sys --disable  MnSymbol.map
	       mktexlsr
}