# Maintainer: Eric Engestrom <aur [at] engestrom [dot] ch>
# Contributor: Tom Richards <tom [at] tomrichards [dot] net>

pkgname=caddy
pkgver=0.5.1
pkgrel=1
pkgdesc="A configurable, general-purpose HTTP/2 web server for any platform"
arch=('i686' 'x86_64' 'armv6h')
url="https://github.com/mholt/caddy"
license=('Apache')
install='caddy.install'
conflicts=('caddy-git')

[ "$CARCH" = 'x86_64' ] && _suffix='amd64' && _md5='b95a163a6b06de79bfe2f5cd3d6a3043'
[ "$CARCH" = 'i686' ]   && _suffix='386'   && _md5='89d71c9eaabdc0f764f88c2847f963b4'
[ "$CARCH" = 'armv6h' ] && _suffix='arm'   && _md5='b86e7c5e992e55f5b424d4ccdd98d41b'
source=("$url/releases/download/v$pkgver/caddy_linux_$_suffix.zip")
md5sums=($_md5)

package() {
  install -Dm755 "$srcdir/caddy_linux_$_suffix" "$pkgdir/usr/bin/caddy"
}
