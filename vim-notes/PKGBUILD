# vim:set ts=2 sw=2 et ft=sh tw=100: expandtab

pkgname=vim-notes
pkgver=0.17.10
pkgrel=1
pkgdesc='Easy note taking in Vim '
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=3375'
_src_id=20005
license=('MIT')
groups=('vim-plugins')
depends=('vim' 'python' 'vim-misc-xolox')
makedepends=('vim')
install='vimdoc.install'
source=("${pkgname}-${pkgver}.zip::http://www.vim.org/scripts/download_script.php?src_id=$_src_id")
package(){
  cd "$srcdir"
  _vim_dir='/usr/share/vim/vimfiles'
  install -d "$pkgdir"/${_vim_dir}

  tar -c ./ --exclude $pkgname-$pkgver.zip \
    --exclude INSTALL.md \
    --exclude README.md \
    --exclude TODO.md \
    --exclude autoload/xolox/misc \
    --exclude .gitignore \
    | tar -x -C "$pkgdir"/${_vim_dir}
}
md5sums=('2897bf93c7bb56b631b7eba887f2c6fb')
