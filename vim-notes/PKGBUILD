pkgname=vim-notes
pkgver=0.16.11
_scriptid=16978
pkgrel=1
pkgdesc='Easy note taking in Vim '
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=3375'
license=('MIT')
groups=('vim-plugins')
depends=('vim' 'python')
makedepends=('vim')
install='vimdoc.install'
source=(
  "${pkgname}-${pkgver}.zip::http://www.vim.org/scripts/download_script.php?src_id=$_scriptid"
)
build(){
  cd "$srcdir"
  _vim_dir='/usr/share/vim/vimfiles'

#  zcat patch.diff.gz | patch -p0 || return 1
  install -d "${pkgdir}${_vim_dir}" || return 1
  tar -c ./ --exclude ${pkgname}-${pkgver}.zip | tar -x -C "${pkgdir}${_vim_dir}" || return 1
  rm -f ${pkgdir}${_vim_dir}/{INSTALL.md, README.md, TODO.md}
}
md5sums=('25c00646cfd637f549dfdef4586b5014')
