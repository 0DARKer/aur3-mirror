pkgname=vim-notes
pkgver=0.12.11
_scriptid=16899
pkgrel=1
pkgdesc='Easy note taking in Vim '
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=3375'
license=('MIT')
groups=('vim-plugins')
depends=('vim')
makedepends=('vim')
install='vimdoc.install'
source=("${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=$_scriptid")
build(){
  cd "$srcdir"

  _vim_dir='/usr/share/vim/vimfiles'
  install -d "${pkgdir}${_vim_dir}" || return 1
  tar -c ./ | tar -x -C "${pkgdir}${_vim_dir}" || return 1
  rm -f {INSTALL.md, README.md, TODO.md, $pkgname.zip} || return 1
}
md5sums=('3c67d98a18b36dafba157fa8e74fd623')
