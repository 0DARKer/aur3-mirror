# Contributor: Tobias Powalowski <tpowa@archlinux.org>
# Contributor: Hokum <hokum_at_mail_dot_ru>

_pkgname="gptfdisk"
pkgname="${_pkgname}-git"

pkgver=20110705
pkgrel=1
pkgdesc="A text-mode partitioning tool that works on Globally Unique Identifier (GUID) Partition Table (GPT) disks - GIT version"
arch=('i686' 'x86_64')
url="http://www.rodsbooks.com/gdisk"
makedepends=('man2html')
depends=('gcc-libs' 'util-linux' 'popt' 'man-db' 'icu')
license=('GPL2')
conflicts=("${_pkgname}" 'gdisk')
provides=("${_pkgname}" 'gdisk')
options=(strip !emptydirs zipman !libtool docs)

_gitroot="git://${_pkgname}.git.sourceforge.net/gitroot/${_pkgname}/${_pkgname}"
_gitname="${_pkgname}"

_update_git() {
	
	cd "${srcdir}"
	
	msg "Connecting to GIT server...."
	
	if [ -d "${srcdir}/${_gitname}/" ]
	then
		cd "${srcdir}/${_gitname}/"
		git reset --hard
		git fetch
		git checkout master
		git merge remotes/origin/master
		msg "The local GIT repo has been updated."
	else
		git clone "${_gitroot}" "${_gitname}"
		msg "GIT checkout done or server timeout"
	fi
	
	echo
	
}

build() {
	
	_update_git
	
	rm -rf "${srcdir}/${_gitname}_build/" || true
	cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}_build"
	
	cd "${srcdir}/${_gitname}_build/"
	
	# unset CFLAGS
	# unset CXXFLAGS
	# unset LDFLAGS
	
	echo
	
	make --makefile="${srcdir}/${_gitname}_build/Makefile" clean || true
	echo
	
	CFLAGS="" make --makefile="${srcdir}/${_gitname}_build/Makefile"
	echo
	
	man2html < "${srcdir}/${_gitname}_build/gdisk.8" > "${srcdir}/${_gitname}_build/gdisk.html"
	echo
	man2html < "${srcdir}/${_gitname}_build/sgdisk.8" > "${srcdir}/${_gitname}_build/sgdisk.html"
	echo
	man2html < "${srcdir}/${_gitname}_build/fixparts.8" > "${srcdir}/${_gitname}_build/fixparts.html"
	echo
	
}

package() {
	
	cd "${srcdir}/${_gitname}_build/"
	
	install -D -m755 "${srcdir}/${_gitname}_build/gdisk" "${pkgdir}/sbin/gdisk"
	install -D -m755 "${srcdir}/${_gitname}_build/sgdisk" "${pkgdir}/sbin/sgdisk"
	install -D -m755 "${srcdir}/${_gitname}_build/fixparts" "${pkgdir}/sbin/fixparts"
	
	install -D -m644 "${srcdir}/${_gitname}_build/gdisk.8" "${pkgdir}/usr/share/man/man8/gdisk.8"
	install -D -m644 "${srcdir}/${_gitname}_build/sgdisk.8" "${pkgdir}/usr/share/man/man8/sgdisk.8"
	install -D -m644 "${srcdir}/${_gitname}_build/fixparts.8" "${pkgdir}/usr/share/man/man8/fixparts.8"
	
	install -D -m644 "${srcdir}/${_gitname}_build/gdisk.html" "${pkgdir}/usr/share/${_pkgname}/gdisk.html"
	install -D -m644 "${srcdir}/${_gitname}_build/sgdisk.html" "${pkgdir}/usr/share/${_pkgname}/sgdisk.html"
	install -D -m644 "${srcdir}/${_gitname}_build/fixparts.html" "${pkgdir}/usr/share/${_pkgname}/fixparts.html"
	
	install -D -m644 "${srcdir}/${_gitname}_build/README" "${pkgdir}/usr/share/${_pkgname}/README"
	install -D -m644 "${srcdir}/${_gitname}_build/NEWS" "${pkgdir}/usr/share/${_pkgname}/NEWS"
	
}
