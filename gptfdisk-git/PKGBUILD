# Contributor: Tobias Powalowski <tpowa@archlinux.org>
# Contributor: Hokum <hokum_at_mail_dot_ru>

pkgname=gptfdisk-git
pkgver=20110627
pkgrel=1
pkgdesc="A text-mode partitioning tool that works on Globally Unique Identifier (GUID) Partition Table (GPT) disks - GIT version"
arch=('i686' 'x86_64')
url="http://www.rodsbooks.com/gdisk"
depends=('gcc-libs' 'util-linux' 'popt' 'man-db' 'icu')
makedepends=('man2html')
license=('GPL2')
conflicts=('gptfdisk' 'gdisk')
provides=('gptfdisk')
options=(!emptydirs zipman !libtool docs)

_gitroot="git://gptfdisk.git.sourceforge.net/gitroot/gptfdisk/gptfdisk"
_gitname="gptfdisk"

update_git() {
	
	cd "${srcdir}"
	
	msg "Connecting to GIT server...."
	
	if [ -d "${srcdir}/${_gitname}/" ]
	then
		cd "${srcdir}/${_gitname}/"
		git reset --hard
		git fetch
		git checkout master
		git merge remotes/origin/master
		msg "The local GIT repo has been updated."
	else
		git clone "${_gitroot}" "${_gitname}"
	fi
	
	msg "GIT checkout done or server timeout"
	
}

build() {
	
	update_git
	
	rm -rf "${srcdir}/${_gitname}_build/" || true
	
	cp -r "${srcdir}/${_gitname}" "${srcdir}/${_gitname}_build"
	cd "${srcdir}/${_gitname}_build/"
	
	# unset CFLAGS
	# unset CXXFLAGS
	# unset LDFLAGS
	
	echo
	echo
	make --makefile="${srcdir}/${_gitname}_build/Makefile" clean || true
	CFLAGS="" make --makefile="${srcdir}/${_gitname}_build/Makefile"
	echo
	
	man2html < "${srcdir}/${_gitname}_build/gdisk.8" > "${srcdir}/${_gitname}_build/gdisk.html"
	echo
	man2html < "${srcdir}/${_gitname}_build/sgdisk.8" > "${srcdir}/${_gitname}_build/sgdisk.html"
	echo
	man2html < "${srcdir}/${_gitname}_build/fixparts.8" > "${srcdir}/${_gitname}_build/fixparts.html"
	echo
	
}

package() {
	
	cd "${srcdir}/${_gitname}_build/"
	
	install -D -m755 gdisk "${pkgdir}/sbin/gdisk"
	install -D -m755 sgdisk "${pkgdir}/sbin/sgdisk"
	install -D -m755 fixparts "${pkgdir}/sbin/fixparts"
	
	install -D -m644 gdisk.8 "${pkgdir}/usr/share/man/man8/gdisk.8"
	install -D -m644 sgdisk.8 "${pkgdir}/usr/share/man/man8/sgdisk.8"
	install -D -m644 fixparts.8 "${pkgdir}/usr/share/man/man8/fixparts.8"
	
	install -D -m644 gdisk.html "${pkgdir}/usr/share/gdisk/gdisk.html"
	install -D -m644 sgdisk.html "${pkgdir}/usr/share/gdisk/sgdisk.html"
	install -D -m644 fixparts.html "${pkgdir}/usr/share/gdisk/fixparts.html"
	
	install -D -m644 README "${pkgdir}/usr/share/gdisk/README"
	install -D -m644 NEWS "${pkgdir}/usr/share/gdisk/NEWS"
	
}
