pkgname=ttf-font-awesome
pkgver=3.1.1
pkgrel=2
pkgdesc="Iconic font designed for use with Twitter Bootstrap"
url="http://fortawesome.github.com/Font-Awesome/"
license=('CCPL')
depends=('fontconfig' 'xorg-font-utils')
options=("!strip")
install=ttf-font-awesome.install
arch=('any')
source=('http://fortawesome.github.io/Font-Awesome/assets/font-awesome.zip')
md5sums=('0b29d34844f07146238a00ad8ae0ebaa')

package() {
  install -d "$pkgdir/usr/share/fonts/TTF"
  cp -dpr --no-preserve=ownership "$srcdir/font-awesome/font/"*.ttf "$pkgdir/usr/share/fonts/TTF/"
}
