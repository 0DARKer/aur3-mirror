pkgname=ttf-font-awesome
pkgver=3.0.2
pkgrel=1
pkgdesc="Iconic font designed for use with Twitter Bootstrap"
url="http://fortawesome.github.com/Font-Awesome/"
license=('CCPL')
depends=('fontconfig' 'xorg-font-utils')
options=("!strip")
install=ttf-font-awesome.install
arch=('any')
source=('https://github.com/FortAwesome/Font-Awesome/zipball/master')
md5sums=('99d4a3ae9e89fac542056adbbf5633c4')

build() {
  cd FortAwesome-*/font
  install -Dm644 fontawesome-webfont.ttf "$pkgdir/usr/share/fonts/TTF/FontAwesome.ttf"
}
