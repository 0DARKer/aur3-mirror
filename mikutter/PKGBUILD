# Maintainer: 2GMon <t_2gmon@yahoo.co.jp>
pkgname=mikutter
pkgver=0.0.3.1
pkgrel=1
pkgdesc="a moest twitter client"
arch=('i686' 'x86_64')
url="http://mikutter.hachune.net/"
license=('GPL v3')
depends=('ruby-gtk2' 'ruby-hmac')
optdepends=('libnotify' 'ruby-sqlite3')
provides=('mikutter')
install=
source=(http://mikutter.hachune.net/bin/$pkgname.$pkgver.tar.gz
        mikutter)
md5sums=('d193aa9b7ff8f5c81e28f2cc2abe36cb'
         'd4274cf7f6ae5fef9032e52cb0e56938')

build() {
  cd "$srcdir/$pkgname"
}

package() {
  mkdir "$pkgdir/opt"
  cp -r "$srcdir/$pkgname" "$pkgdir/opt"
  
  mkdir -p "$pkgdir/usr/bin"
  cp "$startdir/mikutter" "$pkgdir/usr/bin/mikutter"
  chmod a+x "$pkgdir/usr/bin/mikutter"
}

# vim:set ts=2 sw=2 et:
