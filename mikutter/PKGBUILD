# vim:set ts=2 sw=2 et:
# Maintainer: 2GMon <t_2gmon@yahoo.co.jp>
pkgname=mikutter
pkgver=3.1.0_alpha3
pkgrel=1
pkgdesc="a moest twitter client"
arch=('i686' 'x86_64')
url="http://mikutter.hachune.net/"
license=('MIT')
depends=('ruby-gtk2' 'ruby-moneta')
optdepends=('libnotify: notify support')
# source=(http://mikutter.hachune.net/bin/$pkgname.$pkgver-alpha1.tar.gz mikutter.install)
source=(http://mikutter.hachune.net/bin/$pkgname.`echo "$pkgver" | tr "_" '-'`.tar.gz mikutter.install)
install=mikutter.install

package() {
  mkdir "$pkgdir/opt"
  cp -r "$srcdir/$pkgname" "$pkgdir/opt"

  mkdir -p "$pkgdir/usr/bin"
  cat <<'EOF' > "$pkgdir/usr/bin/mikutter"
#!/bin/sh
ruby /opt/mikutter/mikutter.rb $@
EOF
  chmod a+x "$pkgdir/usr/bin/mikutter"
}

md5sums=('d7c997786b0316480151aba220dc961e'
         '956838809e9ec9519c8bd9164484f702')
