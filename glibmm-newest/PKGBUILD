# Maintainer: Jesus Alvarez <jeezusjr@gmail.com>

pkgname=('glibmm-newest')
pkgver=2.27.4.1
pkgrel=1
arch=('i686' 'x86_64')
license=('LGPL')
pkgdesc="Glibmm (glibmm-newest) is a C++ interface for glib."
makedepends=('glib2-newest>=2.27.5' 'libsigc++>=2.2.8' 'pkgconfig')
options=('!libtool' '!docs')
conflicts=('glibmm')
provides=('glibmm=${pkgver}')
url="http://gtkmm.sourceforge.net/"
source=(http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.27/glibmm-${pkgver}.tar.bz2)
sha256sums=('43602d845c80bb004fae8ef291d26947713a3a7db0b74e13597ee7d7da619ce1')

build() {
  cd "${srcdir}/glibmm-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "${srcdir}/glibmm-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
}
