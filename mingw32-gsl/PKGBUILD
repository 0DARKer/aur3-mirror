# Contributor: Ricardo Honorato <rikardo.horo@gmail.com>

pkgname=mingw32-gsl
pkgver=1.13
pkgrel=1
pkgdesc="The GNU Scientific Library (GSL) is a modern numerical library for C and C++ programmers"
url="http://www.gnu.org/software/gsl/gsl.html"
source=(http://ftp.belnet.be/mirror/ftp.gnu.org/gnu/gsl/gsl-$pkgver.tar.gz)
license=('GPL')
arch=('i686' 'x86_64')
depends=('glibc' 'bash')
options=('!libtool')
md5sums=('d9fcfa367c44ab68a25b4edf34c3c5f7')

build() {
    cd ${srcdir}/gsl-${pkgver}
    CC="i486-mingw32-g++" AR="i486-mingw32-ar" RANLIB="i486-mingw32-ranlib" ./configure \
        --build=`./config.guess` --host=i486-mingw32 --prefix=/usr/i486-mingw32
    make || return 1
    make DESTDIR=${pkgdir} install || return 1
}
