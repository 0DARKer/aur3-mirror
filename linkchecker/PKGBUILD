pkgname=linkchecker
_pkgname=LinkChecker
pkgver=9.0
pkgrel=1
pkgdesc="An utility to check HTML documents for broken links."
arch=('any')
url="http://wummel.github.io/linkchecker/"
license=('GPL')
depends=('python2>=2.5')
makedepends=('qt4')
optdepends=('python2-qscintilla: for gui version')
source=(http://wummel.github.io/linkchecker/dist/${_pkgname}-$pkgver.tar.xz)
sha256sums=('e55e91519b83bedf1737ed9ac17e1d434f524952cc3ada66e8487149784892a2')

package() {
  cd $srcdir/${_pkgname}-$pkgver
  python2 setup.py sdist --manifest-only || return 1
  (cd doc/html; make)
  python2 setup.py build || return 1
  python2 setup.py install --root=$pkgdir || return 1
}
