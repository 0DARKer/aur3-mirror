# Contributor: Sergey Mastykov <smastykov[at]gmail[dot]com>

pkgname=linkchecker
_pkgname=LinkChecker
pkgver=8.4
pkgrel=1
pkgdesc="An utility to check HTML documents for broken links."
arch=('any')
url="http://wummel.github.io/linkchecker/"
license=('GPL')
depends=('python2>=2.5')
makedepends=('qt4')
optdepends=('python2-qscintilla: for gui version')
source=(http://github.com/downloads/wummel/linkchecker/${_pkgname}-$pkgver.tar.xz)
sha256sums=('b77ba0e8a087ea11efb64216427b3ae5437a1534ffd9f8762ffd26bc9600c0a7')

package() {
  cd $srcdir/${_pkgname}-$pkgver
  python2 setup.py sdist --manifest-only || return 1
  (cd doc/html; make)
  python2 setup.py build || return 1
  python2 setup.py install --root=$pkgdir || return 1
}
