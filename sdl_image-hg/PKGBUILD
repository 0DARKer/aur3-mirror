pkgname=sdl_image-hg
pkgver=339
pkgrel=2
pkgdesc="A simple library to load images of various formats as SDL 2.0 surfaces"
arch=('i686' 'x86_64')
url="http://www.libsdl.org/projects/SDL_image/"
license=('custom')
depends=('sdl-2.0' 'libpng12' 'libjpeg>=7' 'libtiff' 'zlib')
makedepends=('mercurial')
options=(!libtool)

_hgroot="http://hg.libsdl.org"
_hgrepo="SDL_image"

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [ -d $_hgrepo ] ; then
    cd $_hgrepo
    hg pull -u || true
    msg "The local files are updated."
  else
    hg clone $_hgroot $_hgrepo || true
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  sh autogen.sh
  mkdir build && cd build
  LIBPNG_CFLAGS=`libpng12-config --cflags` \
  LIBPNG_LIBS=`libpng12-config --libs` \
  ../configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_hgrepo-build/build"

  make DESTDIR="$pkgdir" install

  install -Dm644 "$srcdir/$_hgrepo/COPYING" "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
