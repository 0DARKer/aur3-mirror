# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-envisage-doc
pkgver=4.0.0
_githubtag=a671edc
pkgrel=1
pkgdesc="Documentation for Envisage"
arch=('any')
url="https://github.com/enthought/envisage"
license=('BSD')
makedepends=('python2-distribute')
conflicts=('python2-envisage-doc-git')
options=(!emptydirs)

source=("https://github.com/enthought/envisage/tarball/${pkgver}")
md5sums=('905ea3ec0c4bc71c8cee5a57cab3915f')

build() {
  cd "$srcdir/enthought-envisage-${_githubtag}"

  cd docs

  make html

  install -d "${pkgdir}"/usr/share/doc/enthought/envisage
  cp -r build/html/* "${pkgdir}"/usr/share/doc/enthought/envisage
}

