pkgname=sfepy
pkgver=2010.4
pkgrel=1
pkgdesc="Simple Finite Elements in Python"
arch=('i686' 'x86_64')
url="http://sfepy.kme.zcu.cz"
license=('BSD')
source=(http://sfepy.googlecode.com/files/${pkgname}-release-${pkgver}.tgz)
md5sums=('feb529ff7c9b4998f7169db85a5d7b7b')
depends=('python-numpy' 'python-scipy' 'swig' 'pyparsing' 'python-matplotlib' 'python-pytables')
makedepends=('setuptools' 'swig' 'python-numpy' 'python-scipy')
optdepends=('pysparse'
            'gmsh'
            'tetgen'
            'ipython: for use of isfepy shell')

build() {
   cd ${srcdir}/${pkgname}-release-${pkgver}
   python2 setup.py build_ext --inplace
   python2 setup.py install --prefix=/usr --root=${pkgdir} || return 1
}
