# Contributor: wido <widomaker2k7@gmail.com>

pkgname=opera-i18n
pkgver=11.00
_pkgver=1100
pkgrel=1
_languages=be,bg,cs,da,de,el,en,en-GB,es-ES,es-LA,et,fi,fr,fr-CA,fy,gd,hi,hr,hu,id,it,ja,ka,ko,lt,mk,nb,nl,nn,pl,pt-BR,ro,ru,sk,sr,sv,ta,te,tr,uk,zh-tw,zh-cn
pkgdesc="Language packs for Opera"
arch=('any')
license=('custom:opera')
url="http://www.opera.com/"
depends=("opera")
eval source=(http://www.opera.com/download/lng/${_pkgver}/ouw${_pkgver}_{${_languages}}.lng)

build() {
  cd ${startdir}/src
  for lang in $(echo "${_languages}" | sed 's|,| |g'); do
      install -D -m 644 ouw${_pkgver}_${lang}.lng ${pkgdir}/usr/share/opera/locale/${lang}/ouw${_pkgver}_${lang}.lng
  done
}

