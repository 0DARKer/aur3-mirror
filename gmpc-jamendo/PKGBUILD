pkgname=gmpc-jamendo
pkgver=0.20.0
pkgrel=1
pkgdesc="The jamendo plugin allows you to browse and preview music available on jamendo."
arch=('i686' 'x86_64')
url="http://sarine.nl/gmpc/"
license=('GPL')
depends=('gmpc>=0.20.0' 'json-glib')
options=('!libtool')
source=(http://download.sarine.nl/Programs/gmpc/0.20.0/${pkgname}-${pkgver}.tar.gz)
md5sums=('f82cbfd37430255378bb912cc7b44892')

build() {
   cd "$pkgname-$pkgver"
   ./configure --prefix=/usr
   make
}
package() {
   cd "$pkgname-$pkgver"
   make DESTDIR=$startdir/pkg install
}

