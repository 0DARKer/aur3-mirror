# Maintainer: mitsuse <mitsuset - gmail>
pkgname=python2-flask-script
pkgver=0.3.1
pkgrel=1
pkgdesc="Flask support for writing external scripts."
arch=('any')
url="http://pypi.python.org/pypi/Flask-Script"
license=('BSD')
depends=('python2-flask')
optdepends=('python2-nose')
makedepends=('setuptools')
source=("http://pypi.python.org/packages/source/F/Flask-Script/Flask-Script-0.3.1.tar.gz")
md5sums=('76b1a9c69493190c27c9dc09e5da6885')

build() {
    cd $srcdir/Flask-Script-$pkgver
    python2 setup.py install --root="$pkgdir" --prefix=/usr
}

