pkgname=gap-math
pkgver=4.4.12
pkgrel=1
pkgdesc="System for computational discrete algebra"
arch=('i686' 'x86_64')
url="http://www.gap-system.org/gap.html"
license=('GPL')
depends=('glibc')
source=("ftp://ftp.gap-system.org/pub/gap/gap4/tar.bz2/gap4r4p12.tar.bz2"
        "gap.sh")
md5sums=('2808c00e85e98843bb0e1a62c33ad5f0'
         '6648947cb6d1b8862f9e0aa4bcf86424')

build() {
  cd "$startdir/src/gap4r4"

  ./configure --prefix=/usr PREFIX=/usr CC="$CC" CXX="$CXX"
  make || return 1
  install -D -m 755 $srcdir/gap.sh $pkgdir/usr/bin/gap
  mkdir -p $pkgdir/opt/gap4r4
  rsync -rv --exclude='*.exe' --exclude='*.dll' . $pkgdir/opt/gap4r4
}
