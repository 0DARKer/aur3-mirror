# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-gruff
pkgver=0.3.6 
pkgrel=1
pkgdesc="Beautiful graphing library for Ruby using RMagick."
arch=(any)
url="http://nubyonrails.com/pages/gruff"
license=(Ruby)
depends=('ruby' 'ruby-rmagick2')
source=(http://gems.rubyforge.org/gems/gruff-$pkgver.gem)
noextract=(gruff-$pkgver.gem)
md5sums=('c6f71ac8b6b39dd7e53ca445ebaf411b')

build() {
cd $srcdir
# _gemdir is defined inside build() because if ruby[gems] is not installed on the system
#  makepkg will barf when sourcing the PKGBUILD
local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

gem install --ignore-dependencies -i "$pkgdir$_gemdir" gruff-$pkgver.gem
}
