# Maintainer: Bob Pirkle <bobhenrypirkle@gmail.com>
pkgname=uppydate
pkgver=1.0
pkgrel=1
pkgdesc="a simple official + AUR update notifier"
url="http://code.google.com/p/uppydate/"
license=('GPL')
arch=('any')
depends=(bash cower libnotify)
source=(http://uppydate.googlecode.com/git/uppydate-1.0.tar.gz)

package() {
cd ${srcdir}/${pkgname}-${pkgver}
make DESTDIR="$pkgdir/" install
}

md5sums=('052fb7252711296c244c59946f27401a')
