# Maintainer: Bob Pirkle <bobhenrypirkle@gmail.com>
pkgname=uppydate
pkgver=2.6
pkgrel=4
pkgdesc="a simple update notifier with AUR support, designed with GNOME 3 in mind"
url="http://code.google.com/p/uppydate/"
license=('GPL')
arch=('any')
depends=(bash cower libnotify)
source=(http://uppydate.googlecode.com/git/uppydate-2.6.tar.gz)

package() {
cd ${srcdir}/${pkgname}-${pkgver}
make DESTDIR="$pkgdir/" install
}

md5sums=('671d5cdce3b95644d4e3b739bdcb9996')
