# Maintainer: Steven Hiscocks <hiscockssd _at_ googlemail _dot_ com>

pkgname=xplanetfx
pkgver=2.2.19
pkgrel=1
pkgdesc="xplanet earth with realistic clouding and lightning effects as your wallpaper."
arch=('any')
url="http://mein-neues-blog.de/xplanetfx/"
license=('custom')
depends=('imagemagick' 'xplanet' 'perl-libwww' 'bc')
optdepends=('pygtk: GUI based configuration'
			'perlmagick: cloud image verification')
options=()
install=
changelog=CHANGELOG
source=(LICENSE 
        http://repository.mein-neues-blog.de:9000/archive/xplanetfx-${pkgver}_all.tar.gz)
md5sums=('9da15ebd1303b08b01444f54c776f2e1'
         'd8370fb8b922117b1cf43c9303dbbaad')

build() {
  sed -i 's:#!/usr/bin/env python:#!/usr/bin/env python2:' ${srcdir}/usr/share/xplanetFX/xplanetFX_gtk ${srcdir}/usr/share/xplanetFX/stars/catalog.py
}

package() {
  cp -r ${srcdir}/usr ${pkgdir}
  install -Dm 644 ${startdir}/LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

