pkgname=otpw
pkgver=1.3
pkgrel=2
pkgdesc="OTPW - A one -time password login package using PAM"
url="http://www.cl.cam.ac.uk/~mgk25/otpw.html"
groups=
provides=
depends=(pam)
makedepends=()
conflicts=()
replaces=()
backup=()
install=(otpw.install)
source=(http://www.cl.cam.ac.uk/~mgk25/download/$pkgname-$pkgver.tar.gz)


md5sums=('8e72d23714b29e450aeb50c35be67b55')

build() {
  cd $startdir/src/otpw/

  make || return 1
  #perform manual instalation
  mkdir -p $startdir/pkg/lib/security
  mkdir -p $startdir/pkg/usr/bin
  
  install -m 755 pam_otpw.so     $startdir/pkg/lib/security/
  install -m 755 otpw-gen        $startdir/pkg/usr/bin/

  cd $startdir

}
