pkgname=xcursor-entis
pkgver=1.0
pkgrel=1
pkgdesc="Entis cursor theme"
arch=('any')
url="http://www.entis-design.com/cursors/"
license=('GPL')
source=('http://www.entis-design.com/cursors/entis_cursors_x11_others.tgz')
    
build() {
  cd $srcdir/entis_cursors_x11_others/cursors/

  for FILE in `find -type f`; do
    install -D -m644 $FILE $pkgdir/usr/share/icons/Entis/cursors/$FILE
  done
}

# vim:set ts=2 sw=2 et:
md5sums=('6f612e47258447423f8a2d7aee657d8c')
