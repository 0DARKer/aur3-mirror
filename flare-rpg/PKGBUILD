# Maintainer: Mikael Eriksson <mikael_eriksson@miffe.org>

pkgname=flare-rpg
pkgver=011
pkgrel=1
pkgdesc="open source action roleplaying game"
arch=('i686' 'x86_64')
url="http://clintbellanger.net/rpg/"
license=('GPL')
depends=('sdl' 'sdl_image' 'sdl_mixer')
replaces=('osare')
source=(http://flare-engine.googlecode.com/files/flare_src_v$pkgver.zip)
md5sums=('db1a7a7e446c06230380762399d114ae')

build() {
  cd $srcdir/flare_v$pkgver/src
  g++ *.cpp -o flare.bin -I/usr/include/SDL -lSDL -lSDL_image -lSDL_mixer || return 1
  install -m755 -d $pkgdir/usr/{bin,share/flare/saves}
  install -m755 flare.bin $pkgdir/usr/bin
  cd $srcdir/flare_v$pkgver/resources
  find -name '.DS_Store' -exec rm {} \;
  cp -r * $pkgdir/usr/share/flare
cat > $pkgdir/usr/bin/flare << EOF
#!/bin/sh
cd /usr/share/flare
exec flare.bin
EOF
  chmod +x $pkgdir/usr/bin/flare
  chmod 775 $pkgdir/usr/share/flare/saves
  chown root:games $pkgdir/usr/share/flare/saves
}

# vim:set ts=2 sw=2 et:
