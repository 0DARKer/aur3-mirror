# Contributor: Allen Li <darkfeline (at) abagofapples.com

pkgname=projectm-jack
pkgver=2.0.0
pkgrel=1
pkgdesc="projectM frontend for visualizing the output of the JACK Audio Connection Kit."
url="http://xmms-projectm.sourceforge.net"
arch=('i686' 'x86_64')
license=('GPL')
groups=('projectm-jack')
depends=('projectm' 'projectm-qt' 'jack')
makedepends=('pkgconfig' 'xproto' 'cmake')
source=(http://downloads.sourceforge.net/sourceforge/projectm/projectM-jack-$pkgver.tar.bz2)
source=(http://sourceforge.net/projects/projectm/files/projectM-jack/projectM-jack-$pkgver/projectM-jack-$pkgver-Source.tar.gz)
md5sums=(fee9f0ae7f23d22bfcf024cb156f7273)

build() {
  cd $srcdir/projectM-jack-$pkgver-Source
  rm CMakeCache.txt
  cmake -D CMAKE_INSTALL_PREFIX=/usr .
  make
  make DESTDIR=$pkgdir install
}

