# Contributor: Christopher Daley <crdaley (at) gmail>

pkgname=projectm-jack
pkgver=1.2.0
pkgrel=4
pkgdesc="projectM frontend for visualizing the output of the JACK Audio Connection Kit."
url="http://xmms-projectm.sourceforge.net"
arch=('i686' 'x86_64')
license=('GPL')
groups=('projectm-jack')
depends=('projectm' 'projectm-qt' 'jack-audio-connection-kit')
makedepends=('pkgconfig' 'xproto' 'cmake')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=()
source=(http://downloads.sourceforge.net/sourceforge/projectm/projectM-jack-$pkgver.tar.bz2)
noextract=()
md5sums=(0b033d8535fe7959ccfa4fc6c431ce58)

build() {
  cd $srcdir/projectM-jack-$pkgver
  cmake . || return 1
  cmake -D CMAKE_INSTALL_PREFIX:PATH=/usr . || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1

}

