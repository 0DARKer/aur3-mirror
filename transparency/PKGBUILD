pkgname=transparency
pkgver=2.6.6
pkgrel=1
pkgdesc="A transparent application suite with clock, calendar, and system load applets"
arch=('i686' 'x86_64')
url="http://www.phenix.bnl.gov/WWW/publish/hpereira/software/index.php?page=package&package_list=software_list_qt4&package=transparency&full=1"
license=('GPL')
depends=('qt')
source=(http://www.phenix.bnl.gov/WWW/publish/hpereira/software/tgz/${pkgname}-${pkgver}.tar.gz)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
#  ./autogen.sh --prefix=/usr --with-qt-dir=/usr
  cmake .  
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

md5sums=('b363c120540d168743abb088e05d2f7b')

