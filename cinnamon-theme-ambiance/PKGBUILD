# Maintainer: gareth_c 

pkgname=cinnamon-theme-ambiance
pkgver=1.7
pkgrel=3
pkgdesc="Ambiance (Has Cinnamon 1.4 Support)"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/43"
license=('GPL')
depends=('cinnamon' 'gtk3')
source=('http://cinnamon-spices.linuxmint.com/uploads/themes/3HWS-N5TQ-ZJ16.zip')
md5sums=('58d1ea75894ca97d23ea96bab644895c')
package() {
  cd "$srcdir/Ambiance"

  for i in Ambiance*; do
    find "$i" -type f -not -name *~ -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
  done
}
