# Maintainer: gareth_c 

pkgname=cinnamon-theme-ambiance
pkgver=1.6
pkgrel=1
pkgdesc="Ambiance (Has Cinnamon 1.4 Support)"
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/43"
license=('GPL')
depends=('cinnamon' 'gtk3')
source=('http://cinnamon-spices.linuxmint.com/uploads/themes/4YR9-QNG9-RZQR.zip')
md5sums=('58d1ea75894ca97d23ea96bab644895c')
build() {
        cd ${srcdir}/Ambiance Elementary/
        elementary_dir="$pkgdir/usr/share/themes/Ambiance Elementary/"
        mkdir -p $elementary_dir
        find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/Ambiance Elementary/{}" \;
        
        cd ${srcdir}/Ambiance Mint/
        mint_dir="$pkgdir/usr/share/themes/Ambiance Mint/"
        mkdir -p $mint_dir
        find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/Ambiance Mint/{}" \;
        
        cd ${srcdir}/Ambiance Ubuntu/
        ubuntu_dir="$pkgdir/usr/share/themes/Ambiance Ubuntu/"
        mkdir -p $ubuntu_dir
        find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/Ambiance Ubuntu/{}" \;
}

