pkgname=markdown
pkgver=1.0.1
pkgrel=4
pkgdesc="Text to (X)HTML conversion tool for web writers."
arch=('i686' 'x86_64')
url="http://daringfireball.net/projects/markdown/"
license=('BSD')
depends=('perl')
source=(http://daringfireball.net/projects/downloads/Markdown_$pkgver.zip)
md5sums=('f17b3c2b2830c6fd2fe0098226e59a2f')

build() {
  mkdir -p ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
  mkdir -p ${pkgdir}/usr/share/man/man1

  cd ${srcdir}/Markdown_$pkgver
  install -m755 Markdown.pl ${pkgdir}/usr/bin/${pkgname}
  install -m644 License.text ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  
  # Handling the manpage
  pod2man Markdown.pl > ${pkgname}.1
  gzip ${pkgname}.1
  mv ${pkgname}.1.gz ${pkgdir}/usr/share/man/man1/

}