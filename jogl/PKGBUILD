pkgname=jogl
pkgver=2.0rc11
pkgrel=1
pkgdesc='OpenGL bindings for Java'
arch=('x86_64' 'i686')
url="http://jogamp.org/"
license=('BSD')
depends=('java-runtime' 'libgl')
source=('jogl.LICENSE.txt'
	'http://jogamp.org/deployment/v2.0-rc11/jar/orig/jogl-all.jar'
	'http://jogamp.org/deployment/v2.0-rc11/jar/orig/gluegen-rt.jar')
md5sums=('4a3f908842603c600836678ddfa1415b'
	'86c1125d33c372b025eca8acf16ac540'
	'674cd470b6b2b915f83cee0262f9050c')

if [ "$CARCH" == "i686" ]; then
source+=('http://jogamp.org/deployment/v2.0-rc11/jar/orig/jogl-all-natives-linux-i586.jar'
	'http://jogamp.org/deployment/v2.0-rc11/jar/orig/gluegen-rt-natives-linux-i586.jar')
md5sums+=('eb5547d2787fe8c7f6dbd1d3649ae37c'
	'89bf28f76cd6d993e4ad0232b0078a30')
else
source+=('http://jogamp.org/deployment/v2.0-rc11/jar/orig/jogl-all-natives-linux-amd64.jar'
	'http://jogamp.org/deployment/v2.0-rc11/jar/orig/gluegen-rt-natives-linux-amd64.jar')
md5sums+=('5c4b32509479fbe3a8f01598a4155ac5'
	'f8808f8f83ee744510c52cb6b74110ff')
fi
noextract=(*.jar)
package() {
cd "$srcdir"
install -d "$pkgdir/usr/share/java/jogl"
install -d "$pkgdir/usr/share/licenses/$pkgname"
install -Dm644 *.jar "$pkgdir/usr/share/java/jogl/"
install -Dm644 jogl.LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname"
}
