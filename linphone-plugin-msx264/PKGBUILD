# Maintainer: Marco Maso <demind@gmail.com>

pkgname=linphone-plugin-msx264
_pkgname=msx264
pkgver=1.3.2
pkgrel=1
pkgdesc="Linphone plugin that enables H.264 video codec"
url="http://mirror.lihnidos.org/GNU/savannah/linphone/plugins/sources/"
arch=('i686' 'x86_64')
license=('GPL')
source=(http://mirror.lihnidos.org/GNU/savannah/linphone/plugins/sources/$_pkgname-$pkgver.tar.gz)
depends=('linphone')
options=('!makeflags')
md5sums=('573d1b9b6404e8b60b5316dc4fa095a1')

build() {

  cd $srcdir/$_pkgname-$pkgver || return 1
  ./configure --prefix=/usr  

  make || return 1

  make DESTDIR=$pkgdir install
}
