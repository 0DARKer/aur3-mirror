# Contributor: Marco Lima <cipparello gmail com>
pkgname=vboxtool
pkgver=0.4
pkgrel=1
pkgdesc="Provides effective control of VirtualBox VM on a Linux headless server"
arch=('i686' 'x86_64')
url="http://vboxtool.sourceforge.net"
license=('GPL3')
depends=('rsync')
optdepends=("virtualbox_bin: VirtualBox")
backup=(etc/conf.d/vboxtool.conf)
source=("http://downloads.sourceforge.net/sourceforge/vboxtool/$pkgname-$pkgver.zip"
	vboxtool
	vboxtool.conf)
options=('docs')
md5sums=('05e7ced6c28875b9acd5ddc2ed33fa77'
         '3c78e5decacc41c79829e2e17059d87d'
         'f86f67d1043ba2a9279347d37680766f')

build() {
  cd "$srcdir/"

  install -D -m 755 script/vboxtool "$pkgdir/"usr/bin/vboxtool || return 1

  # archified version of the original init script
  install -D -m 755 "$srcdir/"vboxtool "$pkgdir/"etc/rc.d/vboxtool || return 1
  install -D -m 644 "$srcdir/"vboxtool.conf "$pkgdir/"etc/conf.d/vboxtool.conf || return 1
  install -m 755 -d "$pkgdir/"etc/vboxtool || return 1

  # docs
  install -m 755 -d "$pkgdir/"usr/share/doc/$pkgname || return 1
  install -m 644 -t "$pkgdir/"usr/share/doc/$pkgname script/vboxtoolinit changelog.txt \
    readme.txt || return 1
}
