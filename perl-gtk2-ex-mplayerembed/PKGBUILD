#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-gtk2-ex-mplayerembed'
_pkgname='Gtk2-Ex-MPlayerEmbed'
pkgver='0.02'
pkgrel='1'
pkgdesc="a widget to embed the MPlayer media player into GTK+ applications"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'gtk2-perl' 'mplayer')
url='http://search.cpan.org/dist/Gtk2-Ex-MPlayerEmbed/'
source=(http://search.cpan.org/CPAN/authors/id/G/GB/GBROWN/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('bf6459def11b0ad221a896a238a81dd6b60d688ad30c7cc4ec7b7265dd9221a2')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  [ "$skiptest" = "1" ] || make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
