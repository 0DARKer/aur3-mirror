# Contributor: wido <widomaker2k7@gmail.com>

pkgname=feh-gtk
pkgver=1.3a
pkgrel=1
pkgdesc="a simple GUI to choose and change your wallpaper using feh as a backend"
arch=('any')
url="http://devblog.homeunix.me/"
license=('GPL2')
depends=('feh' 'pygtk' 'python2')
source=(http://devblog.homeunix.me/share/debian/$pkgname/$pkgname.$pkgver.tar.gz)
md5sums=('b6bf9ebfb7162b2daeb2fef2870e4dee')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make PYTHON="/usr/bin/python2"
  make prefix=/usr DESTDIR="${pkgdir}" PYTHON="/usr/bin/python2" install
}
