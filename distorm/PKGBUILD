# Maintainer: Mike Sampson <mike at sambodata dot com>
# Contributor: Dmitry A. Ilyashevich <dmitry.ilyashevich@gmail.com> 
pkgname=distorm
pkgver=3.0.0
pkgrel=2
pkgdesc="The ultimate disassembler (for AMD64, X86-64)"
url="http://code.google.com/p/distorm/"
license=('GPL')
depends=('glibc')
arch=('i686' 'x86_64')
source=(http://distorm.googlecode.com/files/distorm3.zip)
md5sums=('6d8622de0a498574faec761354efa2cc')

build() {
  cd $srcdir/distorm3/build/linux
  make
  cd $srcdir/distorm3/linuxproj
  make

  install -D -m755 disasm $pkgdir/usr/bin/disasm
  install -D ../COPYING $pkgdir/usr/share/licenses/distorm/COPYING 
}

