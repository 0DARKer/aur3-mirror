# Maintainer: Umberto Reale <realeumberto@gmail.com>

pkgname=aurinstaller-git
pkgver=20130119
pkgrel=2
pkgdesc="A Bash AUR helper with package-query back-end." 
arch=('any')
url="https://github.com/umby213/aurinstaller"
license=('GPL')
depends=('bash' 'wget' 'package-query')
makedepends=('git')
#optdepends=('')
#conflicts=()
#install=${pkgname}.install
#source=()
#md5sums=()

_gitroot="git://github.com/umby213/aurinstaller.git"
_gitname="aurinstaller"

build() {
	cd "$srcdir"
	msg "Connecting to GIT server...."

	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone $_gitroot
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."	

	cd    	                 "$srcdir/$_gitname"
	install -Dm755 $_gitname   "$pkgdir/usr/bin/$_gitname"
} 
