# Maintainer: Federico Cinelli <cinelli.federico@gmail.com>

pkgname=evasi0n
pkgver=1.0
pkgrel=0
pkgdesc="iOS 6.x Jailbreak"
arch=('any')
url="http://www.evasi0n.com"
license=('GPL')
groups=()
depends=()
makedepends=('xz' 'gcc')
checkdepends=()
optdepends=()
provides=(evasi0n)
replaces=(evasi0n)
options=()
source=('https://evad3rs.box.com/shared/static/5dped2c9ejnk5r6ahfpg.lzma')
md5sums=(c297854834a253fafcbfae3977636ee6)

_pkgname="evasi0n-linux"

build() {
  tar --lzma -xvf 5dped2c9ejnk5r6ahfpg.lzma
  
  mkdir -p "$pkgdir/usr/share/$pkgname"
  cp -r "$srcdir/$_pkgname-$pkgver" "$pkgdir/usr/share/$pkgname"
  mkdir -p "$pkgdir/usr/bin/"
  
  cd $srcdir/$_pkgname-$pkgver

  install -D -m755 evasi0n "$pkgdir/usr/bin/$pkgname"
  install -D -m755 evasi0n.x86 "$pkgdir/usr/bin/$pkgname.x86"
  install -D -m755 evasi0n.x86_64 "$pkgdir/usr/bin/$pkgname.x86_64"
} 


