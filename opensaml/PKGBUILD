# Maintainer: Kaiting Chen <kaitocracy@gmail.com>

pkgname='opensaml'
pkgver='2.3'
pkgrel='1'
pkgdesc='Security Assertion Markup Language (SAML)'
arch=('i686' 'x86_64')
url='http://shibboleth.internet2.edu/downloads/opensaml/'
license=('APACHE')

depends=('openssl' 'curl' 'log4shib'
  'xmltooling' 'xerces-c' 'xml-security-c')

md5sums=('9695d40cb28519c2cde8211cd1c3dc69')
source=("${url}cpp/$pkgver/$pkgname-$pkgver.tar.gz")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
    --disable-doxygen-doc
  make; make DESTDIR=$pkgdir install
}
