# Maintaner: Joel Teixeira <joelteixeira at gmail dot com>
pkgname=ttf-andalus
pkgver=1.0
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="Andalus TTF fonts"
arch=('any')
url=('http://www.fonts2u.com/andalus.font')
license=('GPL')
source=(http://joelteixeira.net/arch/$pkgname.tar.bz2)
install=$pkgname.install
md5sums=('9076f479ef3ab3a2de1879c5b54706cb')

build()
{
  mkdir -p $pkgdir/usr/share/fonts/TTF
  cp $srcdir/*.ttf $pkgdir/usr/share/fonts/TTF
}
