
# Contributor: Joe Davison <joedavison.davison@gmail.com>

pkgname=irssistats
pkgver=0.75
pkgrel=1
pkgdesc='Parses irssi log files as stats presented in HTML'
url='http://royale.zerezo.com/irssistats/'
license=(GPL)
depends=('irssi')
arch=('i686' 'x86_64')
install=irssistats.install
source=('irssistats.install' "http://royale.zerezo.com/irssistats/irssistats-0.75.tar.gz")
md5sums=('5520ab7364dc10b5976bde7d844a3dcc'
	 'f3654fd292220bd9adada7ff6c7f0421')

build() {
    cd $srcdir/$pkgname-$pkgver

    mkdir -p $pkgdir/{usr/bin,etc/irssistats,srv/http/irssistats}

    make
    install -m 755 $srcdir/$pkgname-$pkgver/irssistats $pkgdir/usr/bin
    
    # Copy sample files
    cp $srcdir/$pkgname-$pkgver/sample.* $pkgdir/etc/irssistats

    # Copy "data" html files to webserver directory
    cp -R $srcdir/$pkgname-$pkgver/data $pkgdir/srv/http/irssistats/
}
