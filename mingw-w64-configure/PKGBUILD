
pkgname=mingw-w64-configure
pkgver=0
pkgrel=1
arch=(any)
pkgdesc="configure wrapper for MinGW (mingw-w64)"
depends=(mingw-w64-gcc)
license=("GPL")
url="http://fedoraproject.org/wiki/MinGW"
source=("i686-w64-mingw32-configure"
        "x86_64-w64-mingw32-configure")
md5sums=('SKIP' 'SKIP')

package() {
  cd "$pkgdir"

  install -d "${pkgdir}"/usr/bin
  install -m 755 "${srcdir}"/i686-w64-mingw32-configure "${pkgdir}"/usr/bin/
  install -m 755 "${srcdir}"/x86_64-w64-mingw32-configure "${pkgdir}"/usr/bin/
}

