# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname=perl-text-password-pronounceable
pkgver=0.30
pkgrel=1
pkgdesc='Generate pronounceable passwords'
arch=('i686' 'x86_64')
license=('GPL' 'PerlArtistic')
url="http://search.cpan.org/~tsibley/Text-Password-Pronounceable/"
depends=('perl>=5.10.0')
options=(!emptydirs)
source=("http://search.cpan.org/CPAN/authors/id/T/TS/TSIBLEY/Text-Password-Pronounceable-$pkgver.tar.gz")
md5sums=('2a6a3c9197dfb5912f763c0c4f285b48')

build() {
	cd "$srcdir/Text-Password-Pronounceable-$pkgver"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Text-Password-Pronounceable-$pkgver"
	make install DESTDIR="$pkgdir"
}
