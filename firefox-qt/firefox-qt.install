post_install() {
  update-desktop-database -q
  xdg-icon-resource forceupdate --theme hicolor &> /dev/null
  echo "Remember to back up your profile before using this!"
}

post_upgrade() {
  update-desktop-database -q
  xdg-icon-resource forceupdate --theme hicolor &> /dev/null
}

post_remove() {
  post_upgrade $1
}
