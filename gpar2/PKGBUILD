# Maintainer:  TDY <tdy@gmx.com>
# Contributor: Matt McDonald <metzen@gmail.com>

pkgname=gpar2
pkgver=0.3
pkgrel=4
pkgdesc="A gtkmm client for verifying and repairing PAR archives"
arch=('i686' 'x86_64')
url="http://parchive.sourceforge.net/"
license=('GPL')
depends=('libpar2' 'gtkmm')
makedepends=('pkgconfig>=0.9')
source=(http://downloads.sourceforge.net/parchive/$pkgname-$pkgver.tar.gz
        $pkgname-$pkgver.diff)
md5sums=('dcfaecd8cbc005fb8e38c0bf5ba8ca04'
         '691b3f2b2f52adcbb60c8dd5838e635d')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np1 -i ../$pkgname-$pkgver.diff
  sed -i 's/\(::Color\)::Color/\1/g' mainwindow.cc
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
