pkgname=djvusmooth
pkgver=0.2.7
pkgrel=1
pkgdesc="djvusmooth is a graphical editor for DjVu documents"
arch=('i686' 'x86_64')
url="http://jwilk.net"
license=('GPL2')
depends=('python' 'python-djvulibre')
optdepends=()
source=(http://pypi.python.org/packages/source/d/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('e3ccb1737c1018e325c5b8e17f0f2b49')
build() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py build
  python setup.py install --root=$pkgdir    
}

