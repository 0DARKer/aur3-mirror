# Contributor: Adam Hani Schakaki (krzd) <krzd@krzd.net>
# Based on the libgnomekbd package trunk

_pkgbase=libgnomekbd
pkgname=libgnomekbd-dev
pkgver=2.91.91
pkgrel=1
pkgdesc="Gnome keyboard library"
url="http://gswitchit.sourceforge.net"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libxklavier-dev>=5.1' 'gconf')
makedepends=('intltool')
conflicts=("${_pkgbase}")
provides=("${_pkgbase}=${pkgver}")
options=('!libtool' '!emptydirs')
install=libgnomekbd-dev.install
source=("http://ftp.gnome.org/pub/gnome/sources/${_pkgbase}/2.91/${_pkgbase}-${pkgver}.tar.bz2")
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --disable-static
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
