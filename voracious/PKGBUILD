depends=(python2 python2-feedparser python2-xynehttpserver)
source=(
  http://xyne.archlinux.ca/projects/voracious/archives/voracious-2012.11.tar.xz
  http://xyne.archlinux.ca/projects/voracious/archives/voracious-2012.11.tar.xz.sig
)
