# Maintainer: kevku <kevku@gmx.com>
pkgname=f1lt-git
pkgver=20130315
pkgrel=2
pkgdesc="unofficial Formula 1 live timing application"
arch=('i686' 'x86_64')
url="http://f1lt.zxq.net"
license=('GPL3')
depends=('qt4')
makedepends=('git')

_gitroot=https://pieczaro@code.google.com/p/f1lt/ 
_gitname=f1lt

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  qmake-qt4
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  install -Dm 755 "F1LT" "$pkgdir/usr/bin/F1LT"
  install -Dm 666 -p "season.dat" "$pkgdir/opt/F1LT/share/season.dat"
  install -Dm 666 -p "trackdata.dat" "$pkgdir/opt/F1LT/share/trackdata.dat"
  install -Dm 666 -p "trackrecords.dat" "$pkgdir/opt/F1LT/share/trackrecords.dat"

}

# vim:set ts=2 sw=2 et:
