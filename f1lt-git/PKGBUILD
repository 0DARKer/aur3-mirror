# Maintainer: kevku <kevku@gmx.com>
pkgname=f1lt-git
pkgver=129.0b0af82
pkgrel=1
pkgdesc="unofficial Formula 1 live timing application"
arch=('i686' 'x86_64')
url="http://f1lt.pl"
license=('GPL3')
depends=('qt4')
makedepends=('git')
source=("$pkgname::git+https://pieczar@bitbucket.org/pieczar/f1lt.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd "$srcdir/$pkgname"
	qmake-qt4
	make
}

package() {
	cd "$srcdir/$pkgname"
	  install -Dm 755 "F1LT" "$pkgdir/usr/bin/F1LT"
	  install -Dm 644 -p "season.dat" "$pkgdir/opt/F1LT/share/season.dat"
	  install -Dm 644 -p "trackdata.dat" "$pkgdir/opt/F1LT/share/trackdata.dat"
	  install -Dm 644 -p "trackrecords.dat" "$pkgdir/opt/F1LT/share/trackrecords.dat"
}
