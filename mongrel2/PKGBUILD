# Maintainer: Peter Nguyen <peter.hieu.nguyen@gmail.com>
pkgname=mongrel2
pkgver=1.8.0
gitcommit=bc721eb
pkgrel=2
pkgdesc="Language agnostic web server for applications"
url="http://mongrel2.org"
license=("BSD")
source=("https://github.com/zedshaw/${pkgname}/tarball/v${pkgver}")
md5sums=("0ec44b3cd3518a8e58c591c932075b52")
arch=("i686" "x86_64")
depends=("sqlite3" "zeromq")

build() {
    cd $srcdir/zedshaw-$pkgname-$gitcommit
    make PREFIX="$pkgdir/usr" install

    cd tools/procer
    make PREFIX="$pkgdir/usr" install
}
