# Maintainer: mathieui <mathieui[at]mathieui.net>
# Contributor: Baptiste Jonglez <zerstorer at free dot fr>

pkgname=poezio-git
pkgrel=1
pkgver=20130220
pkgdesc="A full-featured command-line irc-like (muc-centered) jabber client (git)"
arch=('i686' 'x86_64')
url="http://poezio.eu"
replaces=('poezio' 'poezio-hg')
provides=('poezio')
license=('zlib')
depends=('python' 'python-sleekxmpp-devel')
makedepends=('git')
optdepends=('python-dnspython: SRV records support (also, gmail)'
            'libopenotr-git: OTR plugin'
            'gnupg: GPG plugin'
            'figlet: ASCII art plugin'
            'python-sphinx: Generating documentation')

_gitroot="http://git.poezio.eu/poezio"
_gitname="poezio"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" prefix=/usr install
}
