# Contributor: unmacaque <unmacaque@gmail.com>

pkgname=ubuntu-sounds
pkgver=0.12
pkgrel=1
pkgdesc="Sounds to spruce up the GNOME desktop environment."
arch=('any')
url="https://launchpad.net/ubuntu/+source/ubuntu-sounds"
license=('Creative Commons Attribution Share-Alike')
source=(https://launchpad.net/ubuntu/+archive/primary/+files/ubuntu-sounds_$pkgver.tar.gz)
md5sums=(52c1297e178ea7afb9cd472ca9e435e3)

build() {
  mkdir -p $pkgdir/usr/share/sounds/
  cd $srcdir/ubuntu-sounds-$pkgver/
  cp -r "ubuntu" $pkgdir/usr/share/sounds/
}


