# Contributor: jwwolf <jwwolf+arch@gmail.com>
pkgname=onioncat
pkgver=0.2.1
pkgrel=1
pkgdesc="An IP-Transparent Tor Hidden Service Connector"
arch=('i686' 'x86_64')
url="http://www.cypherpunk.at/onioncat/"
license=('GPL3')
depends=('tor')
install=$pkgname.install
source=(http://www.cypherpunk.at/ocat/download/Source/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('139c9d1f54feab68a3df76975f993b57')

build() {
	cd "$srcdir/$pkgname-${pkgver}"

	./configure --prefix=/usr
	make || return 1
	make DESTDIR="$pkgdir/" install
}
