# Maintainer: RubenKelevra <cyrond@gmail.com>

pkgname=rk-basic-system-tools
pkgver=2014.2.10
pkgrel=2
pkgdesc="RubenKelevra's basic-system-tools compilation. Install me with 'yaourt -S $pkgname --noconfirm --needed'"
url="http://notyetthere.com"
arch=('i686' 'x86_64')
license=('GPLv3')
makedepends=("yaourt")
depends=("pkgtools"
"preload"
"openssl"
"net-tools"
"sudo"
"iproute2"
"yp-tools"
"dos2unix"
"python2"
"python3"
"wget"
"ntp"
"acpid"
"dbus"
"avahi"
"abs"
"p7zip"
"zip"
"unrar"
"openssh"
"pm-utils"
"traceroute"
"pkgfile"
"hdparm"
"ethtool"
"sdparm"
"dosfstools"
"haveged"
"nmap"
"iperf"
"hping"
"sysstat"
"iotop"
"tcpdump"
"mausezahn"
"htop"
"lsof"
"dnssec-anchors"
"ldns"
"screen"
"curl"
"bedup"
"unrar"
"ntfs-3g"
"dosfstools"
)
optdepends=(
"rk-gnome-basic: for plain gnome with login via gdm"
"rk-gnome-extra: for gnome with some extras"
"rk-gnome-full: for gnome with full desktop experience"
)
post_install() {
   echo "enabling services..."
   echo "cronie.service"
   usr/bin/systemctl enable cronie
   echo "preload.service"
   usr/bin/systemctl enable preload
   echo "acpid.service"
   usr/bin/systemctl enable acpid
   echo "ntpd.service"
   usr/bin/systemctl enable ntpd
   echo "avahi-daemon.service"
   usr/bin/systemctl enable avahi-daemon
   echo "cups.service"
   usr/bin/systemctl enable cups
   echo "haveged.service"
   usr/bin/systemctl enable haveged
   echo "systemd-readahead-collect.service"
   usr/bin/systemctl enable systemd-readahead-collect
   echo "systemd-readahead-replay.service"
   usr/bin/systemctl enable systemd-readahead-replay
   echo "done"
}
