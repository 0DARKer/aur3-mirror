pkgname=groff-doc
pkgver=1.21
pkgrel=1
pkgdesc="GNU troff text-formatting system documentation."
url="http://www.gnu.org/software/groff/groff.html"
arch=('any')
license=('GPLv3')
depends=('groff')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://www.schaffter.ca/mom/mom-1.6-a.tar.gz")
md5sums=('06c77bf50ca99c9f92747cfe9c659fa3')

package() {
  cd "${srcdir}/mom-1.6-a"
  install -d "$pkgdir/usr/share/doc/groff/html"
  cp -rf examples "$pkgdir/usr/share/doc/groff/"
  cp -rf momdoc "$pkgdir/usr/share/doc/groff/html/"
}

