# Contributor: Dan Serban
# Contributor: SiD

pkgname=dupeguru-me-bin
pkgver=6.0.1
pkgrel=1
pkgdesc="a tool to find duplicate songs in your music collection"
arch=(i686 x86_64)
url=http://www.hardcoded.net/dupeguru_me/
license=(custom:Fairware)
depends=(python pyqt sip) # Python 3 !!!
_filearch="i386"
[ "$CARCH" == "x86_64" ] && _filearch="amd64"
source=("http://download.hardcoded.net/dupeguru-me_${pkgver}_${_filearch}.deb")
_32bit_md5sum="c4897b149833102304bbb1c19de27fc0"
_64bit_md5sum="199b585dd166adeb8727586a51a689b6"
md5sums=${_32bit_md5sum}
[ "$CARCH" == "x86_64" ] && md5sums=${_64bit_md5sum}

build()
{
  ar -xv "dupeguru-me_${pkgver}_${_filearch}.deb"
  bsdtar -xvf data.tar.gz
  rm usr/local/share/dupeguru_me/sip.so
  cd usr/local/share/dupeguru_me
  rm -rf PyQt4
  mkdir -p "$pkgdir/usr/bin"
  cd "$srcdir/usr"
  mv share "$pkgdir/usr/"
  cd local/share
  mv dupeguru_me "$pkgdir/usr/share/"
  sed -i 's|#!/usr/bin/env python3.1|#!/usr/bin/python|' "$pkgdir/usr/share/dupeguru_me/run.py"
  USRBINFILE="$pkgdir/usr/bin/dupeguru_me"
  echo "#!/bin/bash" > "$USRBINFILE"
  echo "cd /usr/share/dupeguru_me" >> "$USRBINFILE"
  echo "python run.py" >> "$USRBINFILE"
  chmod +x "$USRBINFILE"
}
