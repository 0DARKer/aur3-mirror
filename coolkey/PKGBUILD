pkgname=coolkey
pkgver=1.1.0_19
pkgrel=2
pkgdesc="Coolkey provides PKCS11 module support for smart-card readers, now with 144k CAC support and downstream RHEL patches"
arch=('i686' 'x86_64')
url="http://www.directory.fedora.redhat.com/wiki/CoolKey"
license=('GPL')
depends=('pcsclite' 'ccid')
makedepends=(rpmextract)
provides=('cackey')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
noextract=()

#Fedora stores its packages in different places by architecture
case `uname -m` in
	'i686')
		source=('http://download.fedora.redhat.com/pub/fedora/linux/development/rawhide/i386/os/Packages/coolkey-1.1.0-19.fc15.i686.rpm')
		md5sums=('9b9c5ac4ac3a956c01ef57b26319b631')
		;;
	'x86_64')
		source=('http://download.fedora.redhat.com/pub/fedora/linux/development/rawhide/x86_64/os/Packages/coolkey-1.1.0-19.fc15.x86_64.rpm')
		md5sums=('853b9b7bcca29b1f890fd0fb486e3985')
		;;
esac

build() {
	cd $srcdir
	rpmextract.sh coolkey-1.1.0-19.fc15.`uname -m`.rpm
}

package() {
	mv usr $pkgdir
}
