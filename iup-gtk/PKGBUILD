# Maintainer: maoserr

pkgname=iup-gtk
pkgver=3.1
pkgrel=1
pkgdesc="C cross platform GUI toolkit"
arch=('i686' 'x86_64')
url="http://www.tecgraf.puc-rio.br/iup/"
license=('custom:tecgraf_library')
depends=('gtk2')
optdepends=('lua: bindings for Lua are available'
            'cd: for additional controls support'
            'im: for advanced imaging support'
            'mesa: for OpenGL support')
provides=('iup')
conflicts=('iup')
source=(http://sourceforge.net/projects/iup/files/3.1/Linux%20Libraries/iup3_1_Linux26_lib.tar.gz/download 'LICENSE')
[ $CARCH = 'x86_64' ] && source=(http://sourceforge.net/projects/iup/files/3.1/Linux%20Libraries/iup3_1_Linux26_64_lib.tar.gz/download 'LICENSE')
md5sums=('3b51f8774b59fe1233013fe34a2d4960' 
	'e73a2a7e8f737f4d0801bd368e2e1121')
[ $CARCH = 'x86_64' ] && md5sums=('06ca4b364f447171942514354f8c1de7' 
	'e73a2a7e8f737f4d0801bd368e2e1121')

build() {
  mkdir -p $pkgdir/usr/{include,lib} || return 1
  install -m644 $srcdir/libiup*.a $pkgdir/usr/lib/ || return 1 
  install -m755 $srcdir/libiup*.so $pkgdir/usr/lib/ || return 1 
  install $srcdir/include/* $pkgdir/usr/include/ || return 1
  install -D $startdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1
}
