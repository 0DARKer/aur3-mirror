
# Maintainer: kens <arch forums>
pkgname=finalterm-git
pkgver=2cf86c7
pkgrel=2
pkgdesc="A new breed of terminal emulator"
arch=('any')
url="http://finalterm.org"
license=('GPL3')
depends=('libgee' 'mx-git' 'clutter-gtk' 'libkeybinder3')
makedepends=('vala' 'git' 'libtool' 'cmake')
provides=('finalterm')
conflicts=('finalterm')
source=('git://github.com/p-e-w/finalterm.git')
md5sums=('SKIP')
install=build-schemas

pkgver() {
    cd finalterm
    git describe --always | sed 's#-#_#g;s#v##'
}

build() {
    cd ${srcdir}/finalterm
    sed 's/mx-1.0/mx-2.0/g' CMakeLists.txt >CMakeLists.txt2
    mv CMakeLists.txt2 CMakeLists.txt
    
    mkdir build
    cd build
    cmake ..
    make
}

package() {
    cd ${srcdir}/finalterm/build
    sudo make DESTDIR="$pkgdir" install
}
