# $Id: PKGBUILD 83850 2010-06-23 10:39:40Z pierre $
# Maintainer : wuyingren <keitaroh@gmail.com>
# Contributor : Thomas Baechler <thomas@archlinux.org>
# Adapted for fbcondecor by: Conrad Nelson

pkgname=nvidia-fbcondecor
pkgver=285.05.09
_extramodules=extramodules-3.1-fbcondecor
_kernver="$(cat /lib/modules/${_extramodules}/version)"
pkgrel=3
pkgdesc="NVIDIA drivers for linux kernel 3.1 patched with fbcondecor."
arch=('i686' 'x86_64')
url="http://www.nvidia.com/"
depends=('linux-fbcondecor>=3.1' 'linux-fbcondecor<3.2' "nvidia-utils=${pkgver}")
makedepends=('linux-headers>=3.1' 'linux-headers<3.2')
conflicts=('nvidia-96xx' 'nvidia-173xx')
license=('custom')
install=nvidia-fbcondecor.install


if [ "$CARCH" = "i686" ]; then
        _arch='x86'
        _pkg="NVIDIA-Linux-${_arch}-${pkgver}"
        source=("http://us.download.nvidia.com/XFree86/Linux-${_arch}/${pkgver}/${_pkg}.run")
        md5sums=('2d469a90abef50320f548cfa8085e3a0')
elif [ "$CARCH" = "x86_64" ]; then
        _arch='x86_64'
        _pkg="NVIDIA-Linux-${_arch}-${pkgver}-no-compat32"
        source=("http://us.download.nvidia.com/XFree86/Linux-${_arch}/${pkgver}/${_pkg}.run")
        md5sums=('2f4a0e78f5560c07220b7ed6fc1e27aa')
fi

build() {
        cd "${srcdir}"
        sh "${_pkg}.run" --extract-only
        cd "${_pkg}/kernel"
        make SYSSRC=/lib/modules/"${_kernver}/build" module
}

package() {
        install -D -m644 "${srcdir}/${_pkg}/kernel/nvidia.ko" \
                "${pkgdir}/lib/modules/${_extramodules}/nvidia.ko"
        install -d -m755 "${pkgdir}/etc/modprobe.d"
	echo "blacklist nouveau" >> "${pkgdir}/etc/modprobe.d/nouveau_blacklist.conf"
        sed -i -e "s/EXTRAMODULES='.*'/EXTRAMODULES='${_extramodules}'/" "${startdir}/nvidia-fbcondecor.install"
	gzip "${pkgdir}/lib/modules/${_extramodules}/nvidia.ko"
}

