pkgname=blender-contour-tools
pkgver=1.1.0
pkgrel=1
pkgdesc="Contour retopology tools for Blender"
arch=(any)
url="http://cgcookie.com/blender/docs/contour-retopology"
license=("GPL v2")
source=("https://github.com/CGCookie/retopology/archive/$pkgver.tar.gz")
depends=("blender>=9:2.68")
makedepends=(dos2unix python)
md5sums=('8630c22edb4dcdf4a8545ec66bba977e')

_blender_version=`blender -v | grep "Blender\s" | awk '{print $2}'`

prepare() {
	cd "$srcdir"
	find . -type f -exec dos2unix {} \;
}
package() {
	cd "$srcdir"
	find . -name '*.py' -exec install -Dm755 {} "$pkgdir/usr/share/blender/${_blender_version}/scripts/addons/"{} \;
	install -Dm644 "retopology-$pkgver/license.txt" "$pkgdir/usr/share/licenses/blender-contour-tools/license.txt"
	python -m compileall "$pkgdir/usr/share/blender"
}
