#Contributor: Erico Nunes <nunes.ericoATgmail>
#Maintainer: Erico Nunes <nunes.ericoATgmail>

pkgname=mazerush
pkgver=0.8.1
pkgrel=1
pkgdesc="3D random maze racing game"
arch=("i686")
url="http://sites.google.com/site/nuneserico/freetime/${mazerush}"
license=(unknown)
depends=('glmath' 'mesa' 'glfw' 'freealut' 'openal' 'ftgl')
source=("https://github.com/enunes/${pkgname}/tarball/v0.8.1")
md5sums=('760cacac47ae744b9d2c6c46c5114142')
_dirend='4241c90'

build() {
	cd "${srcdir}/enunes-${pkgname}-${_dirend}"
	make \
		BASE_PATH=${pkgdir}/usr \
		RELEASE=1
}

package () {
	cd "${srcdir}/enunes-${pkgname}-${_dirend}"
	make install
}

