pkgname=mazerush
pkgver=0.8.1
pkgrel=1
pkgdesc="3D random maze racing game"
arch=(i686)
url="http://sites.google.com/site/nuneserico/freetime/mazerush"
license=(unknown)
depends=('glmath' 'mesa' 'glfw' 'freealut' 'openal' 'ftgl')
source=('https://github.com/enunes/mazerush/tarball/v0.8.1')
md5sums=('04e27912a160f4dfa9b245d98b435860')

build() {
	cd "$srcdir/enunes-$pkgname-fae137f"
	make \
		BASE_PATH=${pkgdir}/usr \
		RELEASE=1
}

package () {
	cd "$srcdir/enunes-$pkgname-fae137f"
	make install
}

