#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.6
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.6.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.6.tar.xz.sig
)
sha512sums=(
  d8a8a9cacf9ef91c3656cdee00c52841effe2b3dd2a882ff96b61525bbdaf7794ce5aaa41e7e03027f990ccb1d9994bdade73d09e7809abac2e09e4c8b127fec
  885d178adb1ebecba87ad810a765519cb9f58b9326c870a39ec462b01fdfc684af1180528a7c511ce09f63d10190671c2e0d17627c2a9cf93d1d2724dcd96207
)
md5sums=(
  dbb2adef3e654182b5d5d3b242cf5d3e
  3ed6e21d33ceaed9de9d3b6297d7f346
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

