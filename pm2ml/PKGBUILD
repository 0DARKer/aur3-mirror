#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.7.13.4
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.7.13.4.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.7.13.4.tar.xz.sig
)
sha512sums=(
  392cb08eeb80b3fa6f876afe1db4f2520a0e1fdaeb1ffc25ed246a95860f682bc97e9999e65a01639e339edeb00fec7777b5d0f8a6348e866b7c7913a06b09a1
  5b189711bd4ffbbeadd28332ee584e393fab6c195b8eaa292de0324a0b96246f1e5dbf0dbf3b407e06c9c8c4404e2713099b27376731fc09be4ae01bc0747558
)
md5sums=(
  b573fae4497702fb5322f94e21ad0b5d
  553ccefe7feaad3b8c9c9626ad39ad36
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

