#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.3.23.2
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.23.2.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.23.2.tar.xz.sig
)
sha512sums=(
  61cd4aea238a088d8d8f56d9a6e54131dc3fef422e1deb1c5e2a0dd01de81ccd9e6cd5bc2fc051d337b120c5194d616da0e6f7a69592260c8c0920803cb0674b
  b67bff9f470e7b3456d32c13ff45aa7c5c73e25e061318c724d30580dc3f06c50549b828d47f67cac17c53d1374b0eb7fdeeb9cf5b90050c3b96d49d203b52cd
)
md5sums=(
  6fb85c3b05ff1c01665aa801457746d3
  70a62da10eb1fe5814311143983c8e28
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

