#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.10.27
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'aria2: ppl script support.' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.10.27.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.10.27.tar.xz.sig
)
sha512sums=(
  5ea6f640eb592615340830a61b319277e54e95748393cdb6e9856573624b3073d13550c0c2a566e6e80e8ded2cf0b487b3baf23c40f84fa3f0fa97c771063de9
  666b7ca5e7a1dac9e0ada64d1dd78c13d0667659de6baf3cf70d46f4dfc2b30e5eb489c97b98aa63ee3feaaa4b5569e7fcfbb793351a859a460ec94a4f83ad9d
)
md5sums=(
  635d6b22622808f85cdb21511289699a
  034660c77df0e70e2fd3bd4b8fc2935c
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

