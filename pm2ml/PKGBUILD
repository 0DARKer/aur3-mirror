pkgname=pm2ml
pkgver=2012.3.21.3
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.3.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.3.tar.xz.sig
)
sha512sums=(
