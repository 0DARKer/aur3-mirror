  088805a9a6e8cd0837a2ade5be8cd08aad08cea1cf6f55cce406f6ac134e659d4118f9b27376a721075f223ebfa276389efcf5c77c4556bc69353449dc219165
)
md5sums=(
  875f48479e81beda90291e24f2a5e228
  b405b4cad9098ee54d36ebbc2747dc28
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl" "$pkgdir/usr/bin/ppl"
}

