depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.20.2.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.20.2.tar.xz.sig
)
