#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.3.26
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.26.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.26.tar.xz.sig
)
sha512sums=(
  35f33ef56f1afd5e7980f699c27ecd5d45c92d9ee2a9e079affdf21583f59af01569b7afc3bf5974ed5c769b8c409ab610a707abfcb5353290ef11279f657871
  03dd0f862e36461b2cd4527c989dcfe6a032c01267f1306d777e4bb18ee48e8fa7ce9249c9b6a7093affc23b90f99a5e52477fd6b38cd59527091f72bd3ad257
)
md5sums=(
  39d513752a43809b2ac5f4075cded4c0
  140db70e5c9c19c30000bb668dba29b4
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

