#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.11
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('aria2: ppl script support.' 'reflector: Reflector support' 'python3-aur: AUR support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.11.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.11.tar.xz.sig
)
sha512sums=(
  af6cdd54106c783ad2da419dd18472dc2a2003c5c5a1502fed6b779773304eca4d4dd03481fb22515dbac2fc74564fa4c2a90a32d34f076e876c5e0cdbd2dcea
  16ee188e7c2f1c5630bfa441017ad02bcc53fed2feb6295627e925d9f2489751337c227cd2257425ec000a83517f6b29b361f6abadc39e43618022002af4fa17
)
md5sums=(
  f9355dfb4313e16a25007f1b3d6d1e03
  a53f5546f97ef824324c6ed67ecbe6ca
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

