#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.3.22.2
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.22.2.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.22.2.tar.xz.sig
)
sha512sums=(
  33b6911395a4b2c12c63978fa79020d48310c38f5d6ca832a8b7392ded3d8fad6ed20d238db390ff8cf3f54f53b65239285e5e013b3636b6c1910d52d1ca7dc5
  a387407e8f564a0a10bd009f2e336d92c0acd8c290c76cda9223bf4f3d5cee1c816d8ce11644fd654ec21f8d5ceed50baa5b0fdbc5d9b7366671dad034ec7e53
)
md5sums=(
  2370cdfba02ae375140a6f05772b8312
  69489650adc8420d3b711650666c25f6
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

