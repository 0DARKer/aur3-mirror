#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.6.10
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.6.10.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.6.10.tar.xz.sig
)
sha512sums=(
  cbf4e3693efe8d9c57cace0f33f05ef70dd2713fd66872323be21e53a847f2d365e47c6a3183b172619f37873a586023faedc86bb30df33e872099b4412d7a6b
  30bcb8dea3d138a27cc0037b9c758a988c40562f868e836b1c100c39472747402418cbc3269b79141bee2857fee761dea48ba9799a856e7465e6289c056e2eee
)
md5sums=(
  ec73936986068565167888df49f100ba
  6b2649dcf7dc7fc38e8687fe3fd1f775
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

