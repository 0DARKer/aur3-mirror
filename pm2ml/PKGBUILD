#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.7.20
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.7.20.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.7.20.tar.xz.sig
)
sha512sums=(
  db30296952827cc0fa2bd1337715ca37e90f653b6975e8f5cf99d155757b56209af455397d1ddbe0275793557a774001a29c1d9bfc90ac6457f13be9cc2b3165
  ffb67cad9db9916ceeeec7adc18d23865c43e8960781f381ab49d68e4c605c21dbc87c534748caae409eedff8e56abfd1a5882246ad3e2fc19c96d857e5417c4
)
md5sums=(
  cf48516cd885b26d69d58fdbff6b6c9c
  2c6111f4f1622d806fa7577f7603e757
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

