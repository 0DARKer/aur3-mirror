#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.3.21.6
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.6.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.6.tar.xz.sig
)
sha512sums=(
  7bba6aac18a4cd0db58e26d5c72087874ab77d9a5f8a4aecbeb3873fd5d7e1dfd189535bef5d8b6b0eca69be307a9ae20d0d56b268596a9b47fd679c9d48060a
  6f6f4dcfd6deee153b90be54c286572c8fa280b1ef9a6008a116e16e9a7a35b851c21c9bebae4c6dff4b7285c3976f9fee0d6a3a5206c13b482609d8f186cdcb
)
md5sums=(
  dd0db1aa93bf1e27d10d2219a53a9a4d
  390dec012c3f05e781c0b6c92ae3ac4e
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

