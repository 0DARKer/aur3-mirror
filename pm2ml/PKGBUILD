#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.4
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.4.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.4.tar.xz.sig
)
sha512sums=(
  8cc5684f9719b3fd52eef12287d1c403b11ce382df36933a65fc94e37ae85f6bb1ea4e8928afeff3a71f2dbfafeb8f047a041dcef3fb45444c5c6794fe5a3792
  cf19d4626757f131fd2957d1b896ef0fb715ca5ca041bd81581055096ce0ac0c3c0e2275c56904cc522aa7f3f320f3c4f9f402f4ff86370d6d4e48c1490c09e9
)
md5sums=(
  4f1ddb11edb32cc769576df42e19a1a0
  5c294d860bf3cfb39916256e0da8505f
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

