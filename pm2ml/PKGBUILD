depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.1.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.1.tar.xz.sig
)
sha512sums=(
  834fe6fc82127973788c997edc67e07911c21cde1a4ea548fd0db5fc63c739318cda345dbc87813b72d5160c9279a9734541d491e5413daed6df2a9a8e8149be
  40cfe3efbf8aa9b36467218c61539bf89c420b864249846136d0e7812e6638f1fca2de44c5cfa22aa6027fda75032d39bdb4adab1688a5b6bae8ec80b65c6045
)
md5sums=(
  680963f1c2bd2c7aa5e8cca52cb8d51b
  e2feb8ad6f62f5b014a83193b5192bef
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl" "$pkgdir/usr/bin/ppl"
}

