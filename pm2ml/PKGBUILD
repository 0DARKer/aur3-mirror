#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.3.22
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.22.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.22.tar.xz.sig
)
sha512sums=(
  b2474f85126637488a754aa404aa70c868369642fbaf5e8f4d7b0ffc623ef35beea9fd27e7b13aed2ba41e92b90afaec67fc051d06545447f785b915b3752a74
  97f073ae3d86b1378192a73e6b3492b4af96b5f435084a0b1eed6b7afecdc3fe491ef9147e55d44173cf7f02c157c1a225589efbf8423746d99d82698363e2dd
)
md5sums=(
  aa8cef1e6aa12eef1838bb08223febae
  a03a732f04295ce23f9e8776fc30a51f
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

