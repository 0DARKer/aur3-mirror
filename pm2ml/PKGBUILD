#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.3.24
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.24.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.24.tar.xz.sig
)
sha512sums=(
  d2d76eb3bac04ff46af8c9c2c9f963ea04b4389c38ed3cacacdd5ac9c9d04f1d61572200a9a3f3902994dfdd092be732130bb568be88b367966a0f14d82697c8
  f53414fa71e41efb99c148aa2daac2b3850413c77de0cca4e2711882abeeb55d64b0a3619ef9dea48e519c4c68a5759aae51cda2b00a2f36d5d4c0bfc2a145d6
)
md5sums=(
  8ff3cfeae5c2594a707a676c088038a3
  cbb6dd1ec05212c59b4a8dd991c97f87
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

