#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.3.21.4
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.4.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.3.21.4.tar.xz.sig
)
sha512sums=(
  bc3d3b68f73eab1408f1706ad707e8b463f861aabd0dfd23c37eac58e42013d732bca9cef65a8838423397c611f71493c5e0e52a419e72ec8ab87f1b0c7c051a
  b7f26945688e8a6dce73c65f325e0f7215ff480d354eb89670bf8435ad02119dbaaf15d3e9998101809f3620f5523b53c007d3acd45ba03feb68174c673bd70a
)
md5sums=(
  af2d7252eca45829ca4396ebd4df47db
  f61b0145ae6aafc5f19ea4392d2c2211
)

build ()
{
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
}

