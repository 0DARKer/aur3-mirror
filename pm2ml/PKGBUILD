#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pm2ml
pkgver=2012.7.25
pkgrel=1
pkgdesc='Generate metalinks for downloading Pacman packages and databases.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pm2ml"
depends=(python3 pyalpm)
optdepends=('python3-aur: AUR support' 'reflector: Reflector support')
backup=(etc/ppl.conf)
source=(
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.7.25.tar.xz
  http://xyne.archlinux.ca/projects/pm2ml/archives/pm2ml-2012.7.25.tar.xz.sig
)
sha512sums=(
  9bfc208d21faf345f46c2cc5dca07fdb32b51afbf5e503e6a8e5ad63422240e9d7ec618f5c783a1b1997f0d8e5615f8f9bbdaea77be749dab143fbf7000e93d0
  931affba306d1cf8a3794765957ecaa73e53885f83e4d1423eccf8db8fb739259bc6df91bc9938150e3545d5fae2c5a3bb9cf7146b51e64db03520adda1257e1
)
md5sums=(
  93b7485355dc324a3f503046762794ae
  4f29d357d0e091cd29c944b011aaf533
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  python3 setup.py install --root="$pkgdir"/ --optimize=1
  install -D -m755 "$srcdir/$pkgname-$pkgver/$pkgname" "$pkgdir/usr/bin/$pkgname"
  for foo_ in ppl pplsyu ppls; do
    install -D -m755 "$srcdir/$pkgname-$pkgver/$foo_" "$pkgdir/usr/bin/$foo_"
  done
  install -D -m755 "$srcdir/$pkgname-$pkgver/ppl.conf" "$pkgdir/etc/ppl.conf"
}

