# Contributor: Your Name <igor.mogielnicki@gmail.com>
pkgname=uhub
pkgver=0.3.2
pkgrel=1
pkgdesc="High performance ADC hub"
arch=(i686)
url="http://www.extatic.org/uhub/"
license=('GPL3')
depends=('libevent' 'openssl')
makedepends=('perl>=5' 'gcc>=3' 'libevent' 'openssl')
backup=('etc/uhub/motd.txt'
        'etc/uhub/uhub.conf'
        'etc/uhub/users.conf')
options=()
install=uhub.install
source=("http://www.extatic.org/downloads/uhub/${pkgname}-${pkgver}-src.tar.bz2"
        "uhub.rc")
md5sums=('d71b9482999735f5847a91c088f496cc'
         '2afc720c29f95ae115e3051f124c30ec')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/etc/uhub

  UHUB_PREFIX=$pkgdir/usr UHUB_CONF_DIR=$pkgdir/etc/uhub make USE_SSL=YES || return 1
  UHUB_PREFIX=$pkgdir/usr UHUB_CONF_DIR=$pkgdir/etc/uhub make install || return 1

  mkdir -p $pkgdir/etc/rc.d
  cp $startdir/uhub.rc $pkgdir/etc/rc.d/uhub
}
# vim:set ts=2 sw=2 et:
