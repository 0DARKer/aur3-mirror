# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
pkgname=perl-tex-encode
pkgver=1.1
pkgrel=1
pkgdesc="Perl module to encode/decode UTF-8 strings into TeX"
arch=("any")
url="http://search.cpan.org/dist/TeX-Encode/"
license=("GPL" "PerlArtistic")
source=(http://search.cpan.org/CPAN/authors/id/T/TI/TIMBRODY/TeX-Encode-$pkgver.tar.gz)
depends=("perl" "perl-html-parser")
options=(!emptydirs)
md5sums=("f321c6c1aff62ca5443b48adaab000f0")

build() {
  cd "$srcdir/TeX-Encode-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/TeX-Encode-$pkgver"
  make test
}

package() {
  cd "$srcdir/TeX-Encode-$pkgver"
  make install DESTDIR="$pkgdir"
}
