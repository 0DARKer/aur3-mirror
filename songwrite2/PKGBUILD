pkgname=songwrite2
pkgver=0.2.1
pkgrel=1
pkgdesc="Tablature editor in Python/GTK2"
arch=(i686 x86_64)
url="http://home.gna.org/oomadness/en/songwrite/index.html"
license=('GPL')
depends=('editobj2' 'gtk2' 'cairo' 'pango' 'python')
makedepends=()
conflicts=(songwrite)
replaces=(songwrite)
backup=()
install=
source=(http://download.gna.org/songwrite/Songwrite2-$pkgver.tar.gz)
md5sums=('81f009e01c9cb913b2deabbb153ce08f')

build() {
  cd $startdir/src/Songwrite2-$pkgver
  python setup.py bdist
  cd $startdir/pkg
  tar xvfz $startdir/src/Songwrite2-$pkgver/dist/Songwrite2-$pkgver.linux-i686.tar.gz	
  
  
  #desktop icons
	mkdir -p $pkgdir/usr/share/pixmaps
	cp $srcdir/Songwrite2-$pkgver/data/songwrite_64x64.png $pkgdir/usr/share/pixmaps/songwrite.png
	
	install -D -m644 $srcdir/../songwrite.desktop $pkgdir/usr/share/applications/songwrite.desktop
}
