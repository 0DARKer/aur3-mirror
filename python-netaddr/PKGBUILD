pkgname=python-netaddr
pkgver=0.7.5
pkgrel=2
pkgdesc="A pure Python network address representation and manipulation library"
arch=('i686' 'x86_64')
license=('BSD')
url="http://github.com/drkjam/netaddr/"
depends=('python')
source=(http://github.com/downloads/drkjam/netaddr/netaddr-$pkgver.tar.gz)
md5sums=('06168e1efb753d4d3e48778a5373e192')

build() {
    cd $srcdir/netaddr-$pkgver/
    /usr/bin/python setup.py install --root=$startdir/pkg || return 1
}

