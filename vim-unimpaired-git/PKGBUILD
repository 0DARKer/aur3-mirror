# Maintainer: Chris Sakalis <chrissakalis@gmail.com>

pkgname=vim-unimpaired-git
pkgver=20130106
pkgrel=1
pkgdesc="Complementary pairs of mappings for various common operations."
arch=('any')
url="https://github.com/tpope/vim-unimpaired"
license=('custom:vim')
depends=("vim")
makedepends=("git")
provides=("vim-unimpaired")
conflicts=("vim-unimpaired")
groups=('vim-plugins')
source=('license.txt')
install=vimdoc.install

md5sums=('5385d0749cd4b74b6bdcf3d08aed46cd')
sha256sums=('1b2b479e7c67f60da82107246a1e89668a30dcb4ae246cce876172e6530037d2')

_gitroot="https://github.com/tpope/vim-unimpaired.git"
_gitname="vim-unimpaired"

build()
{
	msg "Connecting to GIT server...."

	cd $srcdir
	if [ -d $_gitname ] ; then
		cd $_gitname && git pull origin
		msg "The local files are updated."
	else
		git clone --depth=1 $_gitroot $_gitname
	fi

	msg "GIT checkout done or server timeout"
}

package()
{
	install -d ${pkgdir}/usr/share/vim/vimfiles/{doc,plugin}
	install -Dm644 ${srcdir}/${_gitname}/doc/unimpaired.txt ${pkgdir}/usr/share/vim/vimfiles/doc/unimpaired.txt
	install -Dm644 ${srcdir}/${_gitname}/plugin/unimpaired.vim ${pkgdir}/usr/share/vim/vimfiles/plugin/unimpaired.vim
	install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
