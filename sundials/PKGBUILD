pkgname=sundials
pkgver=2.4.0
pkgrel=1
pkgdesc="Suite of nonlinear differential/algebraic equation solvers"
arch=('i686' 'x86_64')
url="https://computation.llnl.gov/casc/sundials/main.html"
license=('BSD')
depends=(bash)
source=(https://computation.llnl.gov/casc/sundials/download/code/$pkgname-$pkgver.tar.gz)
md5sums=('4dbe9b98e66cf7670f42ecb73bf8216e') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure F77=gfortran --prefix=/usr --disable-mpi --with-cflags=-fPIC
  make || return 1
  make prefix="$pkgdir/usr/" install
}

# vim:set ts=2 sw=2 et:
