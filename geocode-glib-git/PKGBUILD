# Contributor: Yosef Or Boczko <yosefor3@walla.com>

_pkgname=geocode-glib
pkgname=$_pkgname-git
pkgver=20130325
pkgrel=1
pkgdesc="API documentation browser for GNOME"
arch=(i686 x86_64)
license=('GPL')
url="http://live.gnome.org/geocode-glib/"
depends=('geoip>=1.5.0'  'glib2' 'json-glib' 'libsoup')
makedepends=('intltool' 'gobject-introspection' 'gtk-doc')
options=('!libtool' '!emptydirs')
conflicts=('geocode-glib')
replaces=('geocode-glib')
provides=('geocode-glib' 'geocode-glib=0.99.1')

_gitroot=http://git.gnome.org/browse/geocode-glib
_gitname=geocode-glib

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
    
  ./autogen.sh --prefix=/usr --enable-gtk-doc
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="${pkgdir}" install
  rm -rf "$srcdir/$_gitname-build"
}
