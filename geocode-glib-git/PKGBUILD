_pkgname=geocode-glib
pkgname=$_pkgname-git
pkgver=0.99.0.169.g44a846b
pkgrel=1
pkgdesc="API documentation browser for GNOME"
arch=(i686 x86_64)
license=('GPL')
url="http://live.gnome.org/geocode-glib/"
depends=("geoip>=1.5.0" 'glib2' 'json-glib' 'libsoup')
makedepends=('intltool' 'gobject-introspection' 'gtk-doc' 'gnome-common')
options=('!libtool' '!emptydirs')
conflicts=('geocode-glib')
replaces=('geocode-glib')
provides=('geocode-glib' 'geocode-glib=0.99.1')
source=('git://git.gnome.org/geocode-glib')
sha256sums=('SKIP')

 pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --always | sed 's/-/./g'
}

build() {
  cd "$srcdir/$_pkgname"
      
  ./autogen.sh --prefix=/usr --enable-introspection --enable-gtk-doc
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="${pkgdir}" install
}
