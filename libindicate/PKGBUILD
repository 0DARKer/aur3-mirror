pkgname=libindicate
pkgver=0.4.4
pkgrel=3
pkgdesc="A small library for applications to raise "flags" on DBus for other components of the desktop to pick up and visualize. (Canonical Ayatana Project)"
arch=('i686' 'x86_64')
url="https://launchpad.net/libindicate"
license=('GPL')
depends=('vala' 'glib2' 'gtk2' 'dbus-glib' 'libxml2' 'libdbusmenu' 'mono' 'gtk-sharp-2' 'pygtk' 'pygobject')
makedepends=()
source=(http://archive.ubuntu.com/ubuntu/pool/main/libi/libindicate/libindicate_${pkgver}.orig.tar.gz
http://archive.ubuntu.com/ubuntu/pool/main/libi/libindicate/libindicate_${pkgver}-0ubuntu2.diff.gz)
md5sums=('6d42a710ddd5466263d244e05a273c45'
	 'd203b819618e2dc04e9722d12e9ee6bb')

build() {
export PYTHON=python2
  cd "$srcdir"/$pkgname-$pkgver
  patch -Np1 -i ../libindicate_${pkgver}-0ubuntu2.diff
  ./configure --prefix=/usr --disable-static --enable-instrospection=no || return 1
  find . -name Makefile -exec sed -i 's/pyglib-2.0-python2.6/pyglib-2.0-python2/g' {} \;
  find . -name Makefile -exec sed -i 's/python2.6/python2.7/g' {} \;
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
