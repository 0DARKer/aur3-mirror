pkgname=libindicate
pkgver=0.4.93
pkgrel=2
pkgdesc="A library to raise "flags" on DBus for other components of the desktop to pick up and visualize. (Canonical Ayatana Project)"
arch=('i686' 'x86_64')
url="https://launchpad.net/libindicate"
license=('GPL')
depends=('vala' 'libxml2' 'libdbusmenu' 'mono' 'gtk-sharp-2' 'pygtk' 'pygobject' 'gnome-doc-utils')
source=($url/0.5/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('c01d18d1b0e75358e113e1934150e97e')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --libexecdir=/usr/lib/libindicate --disable-static --enable-introspection=no
  find . -name Makefile -exec sed -i 's/pyglib-2.0-python2.7/pyglib-2.0-python2/g' {} \;
  make -j1
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}