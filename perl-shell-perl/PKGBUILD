pkgname=perl-shell-perl
_lastauthor="F/FE/FERREIRA"
_pkgname="Shell-Perl"
pkgver=0.0022
pkgrel=2
pkgdesc='A read-eval-print loop in Perl '
url='http://search.cpan.org/dist/Shell-Perl/'
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-class-accessor' 'perl-test-deep' 'perl-data-dumper' 'perl-data-dump' 'perl-file-homedir' 'perl-path-class')
source=(http://search.cpan.org/CPAN/authors/id/${_lastauthor}/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('65a9bb60340bca8892aa226e0ecd3f796f9dc5a2237260f3cbe6dd4c2e706f48')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  export PERL_MM_USE_DEFAULT=1
  export PERL_AUTOINSTALL='--skipdeps'
  perl Makefile.PL INSTALLDIRS=vendor
  make
}
check() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make test
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
