#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname=perl-shell-perl
pkgver=0.0022
pkgrel=1
pkgdesc='A read-eval-print loop in Perl '
url='http://search.cpan.org/dist/Shell-Perl/'
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-class-accessor' 'perl-test-deep' 'perl-data-dumper' 'perl-data-dump' 'perl-file-homedir' 'perl-path-class')
source=("http://search.cpan.org/CPAN/authors/id/F/FE/FERREIRA/Shell-Perl-${pkgver}.tar.gz")
sha256sums=('65a9bb60340bca8892aa226e0ecd3f796f9dc5a2237260f3cbe6dd4c2e706f48')

build() {
  cd "${srcdir}/Shell-Perl-${pkgver}"

  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1

  make || return 1

  [ "$skiptest" = "1" ] || make test || return 1
}

package() {
  cd "${srcdir}/Shell-Perl-${pkgver}"

  make DESTDIR="${pkgdir}" install || return 1

  find "${pkgdir}" -type f -name '.packlist' -delete # ?
  find "${pkgdir}" -type f -name 'perllocal.pod' -delete # ?
}
