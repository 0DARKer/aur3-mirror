# Contributor: Libernux <dutchman55@gmx.com>
pkgname="brother-hl1118"
pkgver="3.0.1"
pkgrel=1
pkgdesc="LPR and CUPS driver for the Brother HL1118"
url="http://solutions.brother.com/linux/en_us/"
arch=('i686' 'x86_64')
license='unknown'
depends=('cups')
makedepends=('deb2targz')
install='brother-hl1118.install'
source=(
	"http://www.brother.com/pub/bsc/linux/dlf/hl1110lpr-3.0.1-1.i386.deb"
	"http://www.brother.com/pub/bsc/linux/dlf/hl1110cupswrapper-3.0.1-1.i386.deb"
)
md5sums=(
	'd0a2bcc6931fdc93849777dcaae28de8'
	'b102a82f6771f761a3b1155f5ed2d14a'
)

build() {
	cd "$srcdir"
	deb2targz *.deb
	for i in *.tar.gz;do tar zxvf $i ;done
	rm -rf "$srcdir/usr/share"
}

package() {
	cd "$pkgdir"
	cp -R "$srcdir/etc" "$pkgdir"
	cp -R "$srcdir/opt" "$pkgdir"
	cp -R "$srcdir/usr" "$pkgdir"
	cp -R "$srcdir/var" "$pkgdir"
	rm "$pkgdir/opt/brother/Printers/HL1110/inf/setupPrintcap"
	install -m 644 -D "$srcdir/opt/brother/Printers/HL1110/cupswrapper/brother-HL1110-cups-en.ppd" "$pkgdir/usr/share/cups/model/HL1110.ppd"
	install -m 755 -D "$srcdir/opt/brother/Printers/HL1110/cupswrapper/brother_lpdwrapper_HL1110" "$pkgdir/usr/lib/cups/filter/brother_lpdwrapper_HL1110"
}