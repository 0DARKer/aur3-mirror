# Contributor: Libernux <dutchman55@gmx.com>
pkgname="brother-hl1118"
pkgver="3.0.1"
pkgrel=1
pkgdesc="LPR and CUPS driver for the Brother HL1118"
url="http://solutions.brother.com/linux/en_us/"
arch=('i686' 'x86_64')
license=('custom:brother commercial license')
depends=('cups')
install='brother-hl1118.install'
source=(
	"http://www.brother.com/pub/bsc/linux/dlf/hl1110lpr-3.0.1-1.i386.rpm"
	"http://www.brother.com/pub/bsc/linux/dlf/hl1110cupswrapper-3.0.1-1.i386.rpm"
	'cupswrapper-license.txt'
	'lpr-license.txt'
)
md5sums=(
	'0ccaf3d18e75a27b5902682410dfc145'
	'408d8e586432cdc1c3d5e04283c5bef1'
	'97ad0cffd216059e9d1d3121899d8646'
	'5e87a3dc0f3e3438c088eda0f3565f0d'
)

package() {
	cd "$pkgdir"
	cp -R "$srcdir/etc" "$pkgdir"
	cp -R "$srcdir/opt" "$pkgdir"
	cp -R "$srcdir/var" "$pkgdir"
	rm "$pkgdir/opt/brother/Printers/HL1110/inf/setupPrintcap"
	install -m 644 -D "$srcdir/opt/brother/Printers/HL1110/cupswrapper/brother-HL1110-cups-en.ppd" "$pkgdir/usr/share/cups/model/HL1110.ppd"
	install -m 755 -D "$srcdir/opt/brother/Printers/HL1110/cupswrapper/brother_lpdwrapper_HL1110" "$pkgdir/usr/lib/cups/filter/brother_lpdwrapper_HL1110"
	install -m 644 -D "$startdir"/cupswrapper-license.txt "${pkgdir}/usr/share/licenses/${pkgname}/cupswrapper-licence.txt"
	install -m 644 -D "$startdir"/lpr-license.txt "${pkgdir}/usr/share/licenses/${pkgname}/lpr-licence.txt"
}