# Maintainer: Travis Nickles <nickles.travis@gmail.com>
# Contributor: Travis Nickles <nickles.travis@gmail.com>

pkgname=antimicro
pkgver=0.5.1
pkgrel=1
pkgdesc="Graphical program used to map keyboard and mouse buttons to gamepad buttons"
arch=('i686' 'x86_64')
url="https://github.com/Ryochan7/antimicro"
license=('GPL3')
groups=()
depends=('libxtst' 'qt4' 'sdl')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install="${pkgname}.install"
source=("https://github.com/Ryochan7/antimicro/archive/${pkgver}.zip")
noextract=()

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  qmake INSTALL_PREFIX=/usr

  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  make INSTALL_ROOT="${pkgdir}" install
}

md5sums=('f7227e99b39ee684c0269b5ffc43cd5a')
