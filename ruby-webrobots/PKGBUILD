# Maintainer: Emiliano Vavassori <syntaxerrormmm(at)gmail.com>
pkgname=ruby-webrobots
_gemname=webrobots
pkgver=0.0.11
pkgrel=1
pkgdesc="Helps write robots.txt compliant web robots in Ruby"
arch=(any)
url="http://rubygems.org/gems/webrobots"
license=('MIT')
depends=('ruby>=1.9' 'ruby-nokogiri>=1.4.4')
makedepends=('rubygems')
source=(https://rubygems.org/downloads/${_gemname}-$pkgver.gem)
noextract=(${_gemname}-$pkgver.gem)
md5sums=('649f4c4f27a06aff684c1966113992af')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" "${_gemname}-${pkgver}.gem"
}
