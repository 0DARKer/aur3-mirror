# Maintainer: Fat Cat <carlos dot manuel250 at gmail dot com>

pkgname=vundle-git
pkgver=0.9.1.47.g3dcb0c3
pkgrel=1
pkgdesc="Another Vim plugin manager"
arch=('any')
url="https://github.com/gmarik/vundle"
license=('MIT')
depends=('vim>=7.0')
makedepends=('git')
install=vundle.install
source=('vimrc.vundle'
	'vundle::git+https://github.com/gmarik/vundle.git')
sha512sums=('73329b4a1f302c684a6c203faac11ca040fd549ed4b4a5b09f4d94c53315748478e3b079bd4d2aed648e4eece2e62fd99d21ffcd34eb966e9e840ef73647c5fb'
            'SKIP')

pkgver() {
  cd $srcdir/vundle
  git describe | sed 's/^v//;s/-/./g'
}

build() {
  
  # There is nothing to be built, since this is an vim plugin
  echo No build needed
}

package() {
  cd "$srcdir/vundle"

  instpath="$pkgdir/usr/share/vim/vimfiles"
  mkdir -p $instpath

  mkdir -p $instpath/doc
  cp -R ./doc $instpath

  mkdir -p $instpath/autoload
  cp -R ./autoload $instpath

  mkdir -p $pkgdir/usr/share/vundle
  cp $srcdir/vimrc.vundle $pkgdir/usr/share/vundle/vimrc.sample

  mkdir -p $pkgdir/usr/share/licenses/$pkgname
  cp ./LICENSE-MIT.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE-MIT.txt
}

# vim:set ts=2 sw=2 et:
