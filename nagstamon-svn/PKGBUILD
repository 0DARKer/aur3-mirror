pkgname=nagstamon-svn
_pkgname=nagstamon
pkgver=217
pkgrel=1
pkgdesc="Nagstamon is a Nagios status monitor for the desktop"
arch=('i686' 'x86_64')
url="http://nagstamon.sourceforge.net"
license=('GPL')
depends=('python2' 'pygtk' 'gnome-python-extras' 'python-lxml' 'python-rsvg')
conflicts=(nagstamon)

source=(nagstamon.desktop nagstamon.start "http://nagstamon.svn.sourceforge.net/viewvc/nagstamon/trunk/Nagstamon/Nagstamon/?view=tar" nagstamon-autostart.desktop)
md5sums=('cbb32d63215d2dbe4dee3ce89caa0b15'
         '81441667b41c774b7074bde200ba825a'
         'a3991833ede571fc666bd9418deb6b38'
         'd257236c7dd060e2f4700f09cc9eff44')

build() {
  cd ${srcdir}/Nagstamon

  mkdir -p $pkgdir/usr/lib/nagstamon
  mv * $pkgdir/usr/lib/nagstamon/
  install -D -m755 ${srcdir}/nagstamon.start $pkgdir/usr/bin/nagstamon
  install -D -m644 ${srcdir}/nagstamon.desktop $pkgdir/usr/share/applications/nagstamon.desktop
  install -D -m644 ${srcdir}/nagstamon-autostart.desktop $pkgdir/etc/xdg/autostart/nagstamon.desktop

  rm -Rf $pkgdir/usr/lib/python2.7
}
