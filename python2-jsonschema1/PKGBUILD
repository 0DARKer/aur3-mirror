# Maintainer: Limao Luo <luolimao+AUR@gmail.com>

_pkgname=jsonschema
pkgname=python2-${_pkgname}1
pkgver=1.3.0
pkgrel=1
pkgdesc="Python object model built on JSON schema and JSON patch"
arch=(any)
url=https://github.com/Julian/jsonschema
license=(unknown)
makedepends=(python2-distribute)
source=($pkgname-$pkgver.tar.gz::https://github.com/Julian/jsonschema/archive/v$pkgver.tar.gz)
sha256sums=('85dde6b539b17d30ade2f55fe6d78075475f8eb6f47c53436531f7a427f4287d')
sha512sums=('fcdeeaa81cfc5f0d2b0cb64cf42f67b90d8e26ef501f59a683cea2d96568de8574906e2983891fdbdb2f6d748eb4cfabda6c8076fc7987f5a6142bd93c42da54')

build() {
    cd $_pkgname-$pkgver/
    python2 setup.py build
}

package() {
    cd $_pkgname-$pkgver/
    python2 setup.py install --prefix=/usr --root="$pkgdir"
}
