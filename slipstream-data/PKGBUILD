# Maintainer: SpepS <dreamspepser at yahoo dot it>

_pkg=slipstream
pkgname=$_pkg-data
pkgver=0.1
pkgrel=1
pkgdesc="A free racing vehicle simulator trying to be physically accurate and fun to play at the same time! Data."
arch=(any)
url="http://www.nongnu.org/slipstream/"
license=('GPL')
source=("http://download.savannah.gnu.org/releases/$_pkg/$pkgname-$pkgver.tar.gz")
md5sums=('3ce7d60444f1d3d74dda45819e9e49e9')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
