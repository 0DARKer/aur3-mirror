# Maintainer: Ã˜yvind 'Mr.Elendig' Heggstad  <mrelendig@har-ikkje.net>>
pkgname=kittypack-git
pkgver=20130121
pkgrel=1
pkgdesc="A silly little tool to get info from archlinux.org/packages"
arch=('any')
url="https://github.com/MrElendig/kittypac"k
license=('AGPL3')
depends=('python' 'python-requests' 'python-docopt' 'python-yaml')
makedepends=('git')
backup=('etc/kittypack.conf')

_gitroot="git://github.com/MrElendig/kittypack.git"
_gitname="kittypack"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  install -DTm644 kittypack.conf "$pkgdir/etc/kittypack.conf"
  install -DT kittypack.py "$pkgdir/usr/bin/kittypack"
}

# vim:set ts=2 sw=2 et:
