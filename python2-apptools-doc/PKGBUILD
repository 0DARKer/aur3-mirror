# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-apptools-doc
pkgver=3.4.1
_githubtag=be1cb50
pkgrel=1
pkgdesc="Documentation for AppTools"
arch=('any')
url="https://github.com/enthought/apptools"
license=('BSD')
makedepends=('python2' 'python2-distribute' 'python2-setupdocs')
conflicts=('python2-apptools-doc-git' 'python-ets-apptools-doc-svn')
options=(!emptydirs)

source=("https://github.com/enthought/apptools/tarball/${pkgver}")
md5sums=('c64847dd9e9994db21ad8e082bf7cb5e')

build() {
  cd "$srcdir/enthought-apptools-${_githubtag}"

  python2 setup.py build_docs || return 1
}

package() {
  cd "$srcdir/enthought-apptools-${_githubtag}"

  install -d "${pkgdir}"/usr/share/doc/enthought/apptools
  cp -r build/docs/html/* "${pkgdir}"/usr/share/doc/enthought/apptools
}

