pkgname=mysql++
pkgver=3.1.0
pkgrel=1
pkgdesc="A C++ wraper for MySQLs C API"
arch=("i686" "x86_64")
url="http://tangentsoft.net/mysql++/"
license=("LGPL")
depends=("libmysqlclient")
optdepends=("mysql")
source=("http://tangentsoft.net/mysql++/releases/$pkgname-$pkgver.tar.gz"
	"mysql++.patch")
md5sums=('d92769cc579b87a60e58a77099cc4f0e'
	 '72f85a1bdba9d5285f0baf1d973033f8')

build() {
	unset LDFLAGS
	
	cd "$srcdir/"
	patch -p0 < mysql++.patch || return 1

	cd "$pkgname-$pkgver/"
	
	./configure --prefix=/usr || return 1
    	make || return 1
	make DESTDIR="$pkgdir" install || return 1
}
