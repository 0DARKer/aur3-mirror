pkgname=amrwb
pkgver=10.0.0.0
pkgrel=1
pkgdesc="3GPP AMR Adaptive Multi-Rate - Wideband (AMR-WB) Speech Codec"
arch=('i686' 'x86_64')
url="http://www.penguin.cz/~utx/amr"
license=('BSD-3')
depends=('glibc')
options=('!libtool')
source=(http://ftp.penguin.cz/pub/users/utx/amr/amrwb-$pkgver.tar.bz2)
# Is this still needed? http://www.3gpp.org/ftp/Specs/archive/26_series/26.204/26204-700.zip)
md5sums=('dba4269307cf09e3d76fa3e60b20dc92')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir"/ install

# Need to install license
}
