# Maintainer: Dustin Falgout <dustin@antergos.info>

pkgname=lightdm-webkit-theme-antergos-git
_gitname=lightdm-webkit-theme-antergos
_pkgname=antergos
pkgver=1.10.r7.g5a4fe0b
pkgrel=1
pkgdesc="The official greeter theme of Antergos Linux"
arch=('any')
url="http://www.antergos.com"
license=('GPLv2')
depends=('lightdm' 'lightdm-webkit-greeter' 'antergos-wallpapers')
makedepends=('git')
provides=('lightdm-webkit-theme-antergos')
conflicts=('lightdm-webkit-theme-antergos')
install=theme.install
source=('git+http://github.com/Antergos/lightdm-webkit-theme-antergos.git')
sha256sums=('SKIP')


pkgver() {
    cd "${srcdir}/${_gitname}"
    git describe --long --tags | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

build()
{
	cd $_gitname
}

package()
{
	cd ${pkgdir}
	mkdir -p usr/share/lightdm-webkit/themes
	cd usr/share/lightdm-webkit/themes
	cp -dpr --no-preserve=ownership ${srcdir}/lightdm-webkit-theme-antergos ${_pkgname}
	msg "Removing .git files"
	cd ${_pkgname}
	rm -f .gitignore
	rm -rf .git
}
