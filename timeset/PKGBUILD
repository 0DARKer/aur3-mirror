# Maintainer: aaditya   aaditya_gnulinux@zoho.com

pkgname=timeset
pkgver=1.5
pkgrel=1
pkgdesc="A script for managing system date and time."
url="https://github.com/aadityabagga/timeset"
arch=('any')
license=('GPL')
depends=('bash')
optdepends=('ntp')
source=("http://sourceforge.net/projects/mefiles/files/${pkgname}-${pkgver}.tar.gz")
sha1sums=('48cd6c41141ce7039fede8c9f0d79dcdb2c5c58c')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

