pkgname=timeset
pkgver=1.3
pkgrel=1
pkgdesc="A bash script for managing system date and time."
url="https://github.com/aadityabagga/timeset"
arch=('any')
license=('GPL')
depends=()
optdepends=('ntp')
source=("https://github.com/aadityabagga/timeset/archive/${pkgver}.tar.gz")
sha1sums=('1b889ec80d9765802a14e21e7b00546c7878277a')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

