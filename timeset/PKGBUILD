pkgname=timeset
pkgver=1.2
pkgrel=4
pkgdesc="A bash script for managing system date and time."
url="https://github.com/aadityabagga/timeset"
arch=('any')
license=('GPL')
depends=()
optdepends=('ntp')
source=("http://downloads.sourceforge.net/mefiles/${pkgname}-${pkgver}.tar.gz")
sha1sums=('b03e7eed22aefea89e986c1fead76e267e7fbc4c')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

