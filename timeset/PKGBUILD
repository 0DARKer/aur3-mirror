pkgname=timeset
pkgver=1.2
pkgrel=1
pkgdesc="A script for managing system date and time."
url="https://github.com/aadityabagga/timeset"
arch=('any')
license=('GPL')
depends=('bash')
optdepends=('ntp')
source=("http://downloads.sourceforge.net/mefiles/${pkgname}-${pkgver}.tar.gz")
sha1sums=('c73789ebe25cff8adef85454b911934a688c0059')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

