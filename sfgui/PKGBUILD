pkgname=sfgui
pkgver=0.1.0
pkgrel=1
pkgdesc="SFGUI (Simple and Fast Graphical User Interface), a C++ GUI library for SFML."
arch=(i686 x86_64)
url="http://sfgui.sfml-dev.de"
license=("zlib")
source=("SFGUI-$pkgver-source.zip::http://sfgui.sfml-dev.de/download/14")
makedepends=(cmake dos2unix)
depends=(sfml)
md5sums=('5c90a22cf36b4038121d7381c6f419e7')

prepare() {
  cd "$srcdir/SFGUI-$pkgver-source"
  find . -type f -exec dos2unix {} \;
}

build() {
  cd "$srcdir/SFGUI-$pkgver-source"
  cmake \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}
package() {
	cd "$srcdir/SFGUI-$pkgver-source"
	make DESTDIR=$pkgdir install
	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/sfgui/LICENSE"
}
