pkgname=python-pylib
pkgver=1.4.0
pkgrel=1
pkgdesc="rapid development utils"
arch=('any')
license=('MIT')
url="http://codespeak.net/py/"
depends=('python2')
makedepends=('setuptools')
source=(http://pypi.python.org/packages/source/p/py/py-$pkgver.zip)
md5sums=('1441a30f94a0f0cfc47d69a792606bff')

build() {
  cd "$srcdir/py-$pkgver"
  python2 setup.py install --root=${pkgdir} --optimize=1 || return 1
}
