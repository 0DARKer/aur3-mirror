sha256sums=('f604bdaeeb86de4725c5a519c96899f4403bf2f3cdbd5b71d30af1c1d78e1a05'
            'ef06a4c5e2c3ab1a0dc82a41fe7cfd1286b645bd113f80066a0ff0df168ac4c1')

package() {
  cd "$srcdir/$pkgname-$pkgver"
