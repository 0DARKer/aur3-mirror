license=('LGPL')
source=("http://ftp.id.eesti.ee/pub/id/signed_repository/sources/$pkgname-$pkgver.tar.gz"
	"http://ftp.id.eesti.ee/pub/id/signed_repository/sources/$pkgname-$pkgver.tar.gz.asc")
sha256sums=('1d5c1464bfc64b8c37d43ef1af0a7d58016c5c6502ea6d6a6e98593e9153ae15'
            '1fb289c1e3ec64ba0d5a2c523f382183b48161d214635d0fc43e2f1eee96210d')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  cp -R usr $pkgdir/
}
