# Maintainer: Mike Dacre <mike@dacre.me>
pkgname=sratoolkit
pkgver=2.4.0
pkgrel=1
pkgdesc="A toolkit from NCBI to download SRA data files and reference sequences and to do file format conversions"
arch=('x86_64')
url="http://www.ncbi.nlm.nih.gov/books/NBK47540/"
license=('unknown')
groups=('sequence_analysis')
depends=()
makedepends=()
install=
changelog=
source=("http://ftp-trace.ncbi.nlm.nih.gov/sra/sdk/2.4.0/sratoolkit.2.4.0-ubuntu64.tar.gz"
        'sratoolkit')
md5sums=('e5d0069e22cdea8fb6970194d3da7198'
         '87ba95f60c2f19c1c04a14dac731fef4')

package() {
  mkdir -p "$pkgdir/usr"
  mkdir -p "$pkgdir/usr/share/java"
  mkdir -p "$pkgdir/usr/share/sratoolkit"
  cp -r "$srcdir/sratoolkit.2.4.0-ubuntu64/bin" "$pkgdir/usr"
  cp -r "$srcdir/sratoolkit.2.4.0-ubuntu64/example" "$pkgdir/usr/share/sratoolkit"
  cp -r "$srcdir/sratoolkit.2.4.0-ubuntu64/example" "$pkgdir/usr/share/schema"
  cp "$srcdir/sratoolkit.2.4.0-ubuntu64/README" "$pkgdir/usr/share"
  cp "$srcdir/sratoolkit.2.4.0-ubuntu64/README-vdb-config" "$pkgdir/usr/share"
  mv "$pkgdir/usr/bin/sratoolkit.jar" "$pkgdir/usr/share/java"
  cp "$srcdir/sratoolkit" "$pkgdir/usr/bin"
}
