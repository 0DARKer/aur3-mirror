# $Id: PKGBUILD 105593 2014-02-11 07:32:54Z bisson $
# Contributor: Francois Boulogne <fboulogne at april dot org>
# Maintainer: Gaetan Bisson <bisson@archlinux.org>

pkgname=subsurface-git
_pkgname=subsurface
pkgver=20140307.5bba84e
pkgrel=1
pkgdesc='Divelog program'
url='http://subsurface.hohndel.org/'
license=('GPL2')
arch=('i686' 'x86_64')
makedepends=('git')
depends=('qt4' 'kdeedu-marble' 'libzip' 'libxml2' 'libxslt' 'sqlite' 'libdivecomputer' 'libusbx' 'libgit2')
source=('git://git.hohndel.org/subsurface.git')
sha1sums=('SKIP')

install=install

provides=('subsurface')
conflicts=('subsurface')

pkgver() {
	cd "${srcdir}/${_pkgname}"
	git log -1 --format='%cd.%h' --date=short | tr -d -
}

build() {
	cd "${srcdir}/${_pkgname}"
	qmake-qt4 -config release
	make
}

package() {
	cd "${srcdir}/${_pkgname}"
	make INSTALL_ROOT="${pkgdir}" install
} 
