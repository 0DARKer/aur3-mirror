# Maintainer: Francois Boulogne <fboulogne at april dot org>
pkgname=subsurface-git
pkgver=20110927
pkgrel=1
pkgdesc="A divelog software written by Linus"
arch=('i686' 'x86_64')
url="http://github.com/torvalds/subsurface/"
license=('GPL')
depends=('libdivecomputer-git' 'libxml2' 'gtk2' 'glib2' 'gconf' )
optdepends=()
makedepends=('git' 'make')
provides=()
conflicts=()
source=()
md5sums=()

_gitroot="git://github.com/torvalds/subsurface.git"
_gitname="subsurface"

build() {

  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"


  #
  # BUILD HERE
  #
  # LDFLAGS to remove harmful -Wl Flag
  #export LDFLAGS="${LDFLAGS//-Wl,}"
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR=$pkgdir/usr/bin install
} 

