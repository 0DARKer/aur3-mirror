# Contributor: Michalis Georgiou <mikes@archlinux.gr>
pkgname=bin32-xlite
_pkgname=xlite
pkgver=2.0
pkgrel=6
pkgdesc="a multiplatform fully functioning softphone (binary only)"
arch=('x86_64')
url="http://www.counterpath.net/x-lite"
license=('custom')
source=("http://counterpath.s3.amazonaws.com/downloads/X-Lite_Install.tar.gz" "xlite.desktop" "icons.tar.gz")
depends=('libstdc++5' 'lib32-libglade' 'lib32-libstdc++5' 'lib32-libxdamage' 'lib32-qt' 'lib32-gtk2')

md5sums=('6041fa4b2c553407373e6020c55da4ae'
         'cb657c6f1de553de3e90079e97f1b1ea'
         '2c82795bd56ba8fe8c82639d011bb7dd')
build() {
        tar xzvf icons.tar.gz 
        install -Dm 644 $srcdir/xlite.png "$pkgdir/usr/share/pixmaps/$_pkgname.png" || return 1
        install -Dm 644 $srcdir/xlite_16x16.png "$pkgdir/usr/share/icons/hicolor/16x16/$_pkgname.png" || return 1
        install -Dm 644 $srcdir/xlite_32x32.png "$pkgdir/usr/share/icons/hicolor/32x32/$_pkgname.png" || return 1
        install -Dm 644 $srcdir/xlite_48x48.png "$pkgdir/usr/share/icons/hicolor/48x48/$_pkgname.png" || return 1
        
        cd $srcdir/xten-xlite 
        mkdir -p ${pkgdir}/opt/${_pkgname} 
        install -Dm 755 xtensoftphone $pkgdir/opt/$_pkgname/ || return 1
        install -Dm 644 $srcdir/xlite.desktop $pkgdir/usr/share/applications/$_pkgname.desktop || return 1
        

        
	}





