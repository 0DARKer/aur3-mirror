# Maintainer: Jonjo McKay <jonjo@jonjomckay.com>
_pkgname=libgroove
pkgname=libgroove-git
pkgver=3.1.1.6fa980f
pkgrel=1
pkgdesc="Audio dispatching library. Generic sink-based interface. Provides decoding, encoding, resampling, and gain adjustment."
arch=('i686' 'x86_64')
url="https://github.com/andrewrk/libgroove"
license=('MIT')
depends=('sdl2' 'lame' 'bzip2' 'ffmpeg')
provides=('libgroove')
makedepends=('cmake' 'yasm')
conflicts=('libgroove')
options=('strip' 'ccache')
source=("git://github.com/andrewrk/libgroove.git")
md5sums=('SKIP')

prepare() {
	cd "$srcdir/$_pkgname"
	mkdir build
}

build() {
	cd "$srcdir/$_pkgname/build"
	cmake ../ \
		-DCMAKE_BUILD_TYPE=Release \
    	-DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd "$srcdir/$_pkgname/build"
	make DESTDIR="$pkgdir/" install
}
