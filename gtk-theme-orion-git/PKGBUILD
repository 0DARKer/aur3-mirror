# Maintainer: Diego Principe <cdprincipe@at@gmail@dot@com>

pkgname=gtk-theme-orion-git
pkgver=35.64b66ae
pkgrel=1
pkgdesc="Modern light theme. It supports Gnome, Unity, XFCE and Openbox. Compatible with GTK 3.6 and 3.8"
arch=('any')
url="https://github.com/shimmerproject/Orion"
license=('GPL3')
depends=('gtk-engine-murrine')
makedepends=('git')
provides=('orion-gtk-theme')
conflicts=('orion-gtk-theme')
source=('git://github.com/shimmerproject/Orion.git')
md5sums=('SKIP')


pkgver() {
  cd ${srcdir}/Orion
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd ${srcdir}/Orion

  # create theme dir
  install -d -m 755 "$pkgdir"/usr/share/themes/Orion

  # clean up
  rm -rf {.git,.gitignore,CREDITS,LICENSE,README}

  # install theme
  cp -r . "$pkgdir"/usr/share/themes/Orion/
}
