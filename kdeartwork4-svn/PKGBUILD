# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdeartwork4-svn
pkgver=1236087
pkgrel=1
pkgdesc="Additional artwork for KDE4"
arch=('i686' 'x86_64')
url="http://www.kde.org/"
license=('GPL')
depends=('kdebase4-workspace-git' 'libkexiv2')
makedepends=('subversion' 'pkgconfig' 'cmake' 'automoc4' 'xscreensaver' 'eigen')
conflicts=('kdeartwork')
groups=('kde4-git')

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdeartwork
_svnmod=kdeartwork

build() {
  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk $_svnmod
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi 

  mkdir ${srcdir}/build
  cd ${srcdir}/build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}