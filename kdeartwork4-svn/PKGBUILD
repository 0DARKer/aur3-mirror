# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdeartwork4-svn
pkgver=1218736
pkgrel=1
pkgdesc="Additional artwork for KDE4"
arch=('i686' 'x86_64')
url="http://www.kde.org/"
license=('GPL')
depends=('kdelibs4-git' 'kdebase4-workspace-git')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'xscreensaver' 'eigen' 'subversion' 'docbook-xsl')
provides=(kdeartwork)
conflicts=(kdeartwork)


_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdeartwork
_svnmod=kdeartwork

build() {
. /etc/profile.d/kde-git.sh
 cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir $_svnmod-build
  cd $_svnmod-build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_INSTALL_PREFIX=/opt/kde4
  make
}

package() {
  cd ${srcdir}/$_svnmod-build
  make DESTDIR=${pkgdir} install
  rm -r $srcdir/$_svnmod-build
}
 