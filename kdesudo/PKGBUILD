# KdeSudo: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>

basename=sudo
pkgname=kde${basename}
pkgver=3.4.2.3
pkgrel=1
pkgdesc="A SUdo frontend for KDE"
arch=("i686" "x86_64")
url="https://launchpad.net/${pkgname}"
license=("GPL")
depends=("kdelibs" "${basename}")
makedepends=("cmake" "automoc4")
options=(!emptydirs)
source=(http://launchpad.net/${pkgname}/3.x/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz)

build() {
	cd ${srcdir}/${pkgname}-${pkgver}

	# Config
	#sed -i "s|ADD_SUBDIRECTORY(en)|#ADD_SUBDIRECTORY(en)|g" doc/CMakeLists.txt || return 1

	# Build
	cmake . -DCMAKE_INSTALL_PREFIX=/usr || return 1
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
}

sha1sums=('631ae8792778e4221b601e536aa698e1c50c3fc9')
