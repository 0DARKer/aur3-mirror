# Maintainer: Jonathan Liu <net147@gmail.com>
pkgname=ginkgo-cadx
_realpkgname=Ginkgo_CADx
pkgver=2.3.0.0
pkgrel=2
pkgdesc="Complete DICOM viewer solution"
arch=('i686' 'x86_64')
url="http://ginkgo-cadx.com/"
license=('LGPL3')
depends=('cairo' 'desktop-file-utils' 'gtk2' 'libgl' 'openssl')
install="${pkgname}.install"
[ "${CARCH}" = "i686" ]   && _arch='x86'
[ "${CARCH}" = "x86_64" ] && _arch='x64'
options=('!strip')
source=("http://downloads.sourceforge.net/project/ginkgocadx/$pkgver/${_realpkgname}-${pkgver}_linux_${_arch}.tgz"
        "ginkgo-cadx.desktop"
        "ginkgo-cadx.png")
md5sums=(''
         'd2411ff4f7ee5b66961b67eb57a2cc44'
         '1de087126d5e72ecdacc2e215601827f')
[ "${CARCH}" = "i686" ]   && md5sums[0]='6d22ab840fc886b8ee49376328385d8c'
[ "${CARCH}" = "x86_64" ] && md5sums[0]='1474d94324f3076f9083c3494d9cd846'

package() {
  cd "${srcdir}"
  [ "${CARCH}" = "i686" ]   && install -D -m755 ginkgo-x86 "${pkgdir}/usr/bin/ginkgo-cadx"
  [ "${CARCH}" = "x86_64" ] && install -D -m755 ginkgo-x64 "${pkgdir}/usr/bin/ginkgo-cadx"
  install -D -m644 ginkgo-cadx.desktop "${pkgdir}/usr/share/applications/ginkgo-cadx.desktop"
  install -D -m644 ginkgo-cadx.png "${pkgdir}/usr/share/pixmaps/ginkgo-cadx.png"
}

# vim:set ts=2 sw=2 et:
