# Contributor: Chris Schwaab
pkgname=ats-lang-anairiats
pkgver=0.2.7
pkgrel=1
pkgdesc="A dependantly typed ML style programming language."
arch=('i686' 'x86_64')
url="http://www.ats-lang.org/"
license=('GPL3')
depends=('gmp')
provides=('ats-lang')
source=("http://downloads.sourceforge.net/project/ats-lang/ats-lang/anairiats-0.2.7/$pkgname-$pkgver.tgz")
md5sums=('e4d7d05b18138ac9fd687ce14aa1f7b5')

build() {
	cd "$pkgname-$pkgver"

	export ATSHOME="$(readlink -e `pwd`)"
	export ATSHOMERELOC=ATS-$pkgver
	./configure --prefix=/usr || return 1
        make -j1 all || return 1
        make DESTDIR=$pkgdir install || return 1
}
