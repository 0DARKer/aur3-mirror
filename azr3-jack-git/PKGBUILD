# Maintainer: David Adler <david dot jo dot adler at gmail dot com>
pkgname=azr3-jack-git
pkgver=20100620
pkgrel=1
pkgdesc="a JACK port of the AZR-3 tonewheel organ"
arch=('i686' 'x86_64')
url="http://ll-plugins.nongnu.org/azr3/"
license=('GPL')
depends=('jack' 'libsigc++' 'lash' 'gtkmm')
provides=('azr3-jack')
conflicts=('azr3-jack')
makedepends=('git')

_gitroot="git://git.sv.gnu.org/ll-plugins/azr3-jack.git"
_gitname="azr3-jack"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
