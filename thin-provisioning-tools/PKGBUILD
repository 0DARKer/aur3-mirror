# Maintainer: Jason Hall <cakersq at gmail dot com>
pkgname=thin-provisioning-tools
pkgver=0.1.4
pkgrel=1
pkgdesc='A suite of tools for thin provisioning on Linux.'
url="https://github.com/jthornber/$pkgname/"
license=('GPL')
source=("https://github.com/jthornber/$pkgname/archive/v$pkgver.zip")
sha512sums=('a212ee3dac5e7cd0dcb0ead96b360532cd99023bd960f963de7f89ba60b8c821c05f222bda33a27e14d0d3c8f06e0e1917e5ae31e9dabea88e3005e2ac7af203')
arch=('i686' 'x86_64')
makedepends=('boost')

prepare() {
	cd $srcdir/$pkgname-$pkgver
	autoreconf
}

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure
	make
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make MANDIR=$pkgdir/usr/share/man BINDIR=$pkgdir/usr/bin install
}
