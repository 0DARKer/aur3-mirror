# Contributor: Vladimir Ermakov <vooon341@gmail.com>

pkgname=yuicompressor
pkgver=2.4.2
pkgrel=4
pkgdesc="CSS and Javascript compressor"
arch=('i686' 'x86_64')
url="http://developer.yahoo.com/yui/compressor/"
license=('BSD')
depends=('java-runtime')
makedepends=()
source=(http://www.julienlecomte.net/$pkgname/$pkgname-$pkgver.zip
		yuicompressor.sh)
options=('!emptydirs')
md5sums=('2a526a9aedfe2affceed1e1c3f9c0579'
         '3a7433ef16302e5364744b228594f0df')

build() {
  cd $startdir/src/$pkgname-$pkgver

  cp ../$pkgname.sh ../$pkgname
  sed "s/x\.y\.z/$pkgver/" -i ../$pkgname

  install -D -m644 build/$pkgname-$pkgver.jar $startdir/pkg/usr/share/java/$pkgname-$pkgver.jar
  install -D -m755 ../$pkgname $startdir/pkg/usr/bin/$pkgname
}
