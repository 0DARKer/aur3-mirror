# Contributor: Christoph Zeiler <rabyte*gmail>

pkgname=tcp_proxy
pkgver=3.0.0
pkgrel=1.1
pkgdesc="A small program for forwarding TCP connections to a remote server"
arch=('i686' 'x86_64')
url="http://mirror.wolf-software.com/Applications/tcp_proxy"
license=('GPL3')
depends=('libsocklib>=3' 'libgll>=3')
makedepends=('pkgconfig>=0.9')
source=($url/$pkgname-latest.tbz2)
md5sums=('cd7c7e49850d37027090a7a174f2d926')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr --disable-static
  make || return 1
  make DESTDIR="$pkgdir" install
}
