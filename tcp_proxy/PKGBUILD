# Contributor: Christoph Zeiler <rabyte*gmail>

pkgname=tcp_proxy
pkgver=3.0.0
pkgrel=1
pkgdesc="A small program for forwarding TCP connections to a remote server"
arch=('i686' 'x86_64')
url="http://www.wolf-software.net/Applications/tcp_proxy/"
license=('GPL3')
depends=('libsocklib>=3' 'libgll>=3')
makedepends=('pkgconfig>=0.9')
source=($url/$pkgname-latest.tbz2)
md5sums=('a8569096abcb5e82f3ef86b174232aef')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr --disable-static
  make || return 1
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
