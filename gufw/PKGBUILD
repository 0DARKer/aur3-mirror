pkgname=gufw
pkgver=13.10.0
_pkgver=13.04.0
pkgrel=2
pkgdesc="An easy, intuitive way to manage your Linux firewall"
arch=('any')
url="http://gufw.org"
license=('GPL3')
depends=('dbus' 'dbus-python' 'gtk3' 'gnome-icon-theme-symbolic' 'webkitgtk' 'notification-daemon' 'polkit' 'python2-netifaces' 'python2-gobject' 'ufw')
makedepends=('python2-distutils-extra' 'intltool')
install=$pkgname.install
source=("$pkgname-$pkgver.tar.gz::http://ubuntuone.com/4Fy4zRyPxiaZFd5JtroVyT")
#	"org.gui-ufw.pkexec.gufw.policy")

prepare() {
  cd "${srcdir}/gui-ufw-$_pkgver"

  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
    -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
    $(find . -name '*.py')
  sed -i "s|python ${LOCATIONS[${i}]}|python2 ${LOCATIONS[${i}]}|" bin/gufw
  sed -i "s|python ${LOCATIONS[${i}]}|python2 ${LOCATIONS[${i}]}|" bin/gufw-pkexec
}

package(){
  cd "$srcdir/gui-ufw-$_pkgver"

  python2 ./setup.py build install --root="${pkgdir}"

  find "${pkgdir}" -type d | xargs chmod 755
  find "${pkgdir}" -type f | xargs chmod 644
  chmod -R 755 "${pkgdir}/usr/bin"
  #chmod 755 "${pkgdir}/usr/share/gufw/daemon/gufw_daemon.py"

  #PolicyKit execution scheme (need some tests)
  #install -m755 -d $pkgdir/usr/share/polkit-1/actions/
  #install -m644 $srcdir/org.gui-ufw.pkexec.gufw.policy $pkgdir/usr/share/polkit-1/actions/

  # Remove gufw.cfg is the prescence of this give you problems
  #rm $pkgdir/etc/gufw/gufw.cfg

}

md5sums=('d001f108da9591abd2bea3cfbc8c8798')
#         '47e7779a8c6acb69ab11ff7b87599359')
