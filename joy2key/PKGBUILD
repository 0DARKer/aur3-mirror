# Contributor: Timur Antipin < mooxtim (at) yandex.ru >
pkgname=joy2key
pkgver=1.6.1
pkgrel=2
pkgdesc="Translate joystick movements into equivalent keystrokes"
arch=('i686' 'x86_64')
url="http://interreality.org/~tetron/technology/joy2key/"
license=('GPL2')
depends=('libx11')
makedepends=('make')
source=("http://interreality.org/~tetron/technology/joy2key/joy2key-${pkgver}.tar.gz")
md5sums=('9b0888140fde5d89eff754ff50645c10')

build() {
msg "Building and installing..."
  cd "${srcdir}/joy2key-${pkgver}"
  patch < ../../input.patch || return 1
  ./configure --prefix=/usr -x-libraries=/usr/lib || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
