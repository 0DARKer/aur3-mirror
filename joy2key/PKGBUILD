# Contributor: Timur Antipin < kosmocap (at) gmail.com >
pkgname=joy2key
pkgver=1.6.1
pkgrel=4
pkgdesc="Translate joystick movements into equivalent keystrokes"
arch=('i686' 'x86_64')
url="http://interreality.org/~tetron/technology/joy2key/"
license=('GPL2')
depends=('libx11' 'xorg-xwininfo')
makedepends=('make')
source=("http://interreality.org/~tetron/technology/joy2key/joy2key-${pkgver}.tar.gz")
md5sums=('9b0888140fde5d89eff754ff50645c10')

build() {
	cd "${srcdir}/joy2key-${pkgver}" || return 1

	msg "Patching..."
	patch < ../../input.patch || return 1
	msg "Building..."
	./configure --prefix=/usr -x-libraries=/usr/lib || return 1
	make || return 1
}

package() {
	cd "${srcdir}/joy2key-${pkgver}" || return 1

	msg "Installing to package directory..."
	make DESTDIR="${pkgdir}" install || return 1
}
