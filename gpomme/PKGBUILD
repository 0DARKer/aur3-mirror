# Contributor: jordi Cerdan (jcerdan) <jcerdan@tecob.com>
pkgname=gpomme
pkgver=1.33
pkgrel=1
pkgdesc="GTK+ client for pommed"
arch=('i686' 'x86_64')
url="http://technologeek.org/projects/pommed/"
license=('GPL2')
depends=('confuse' 'dbus-glib')
source=(http://alioth.debian.org/frs/download.php/3314/pommed-$pkgver.tar.gz)
md5sums=('af70f18b3d633da91fea3d1ccd092653')
build() {
    cd $srcdir/pommed-$pkgver
    make gpomme || return 1
    install -D -m755 ./gpomme/gpomme $pkgdir/usr/bin/gpomme
    install -D -m644 ./gpomme/gpomme.desktop $pkgdir/usr/share/applications/gpomme.desktop

    #install -D -m644 gpomme/gpomme.glade $pkgdir/usr/share/gpomme/gpomme.glade
    mkdir -p $pkgdir/usr/share/gpomme
    cp -a ./gpomme/themes $pkgdir/usr/share/gpomme
	
    # icons 
    install -D -m644 icons/gpomme.svg $pkgdir/usr/share/pixmaps/gpomme.svg
    install -D -m644 icons/gpomme_48x48.png $pkgdir/usr/share/pixmaps/gpomme.png

    # install man page 
    install -D -m644 gpomme/gpomme.1 $pkgdir/usr/share/man/man1/gpomme.1
}
