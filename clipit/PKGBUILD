# maintainer: Mihai Militaru <mihai dot militaru at xmpp dot ro>

pkgname=clipit
pkgver=1.4.1
pkgrel=2
pkgdesc="Lightweight GTK+ clipboard manager (fork of Parcellite)"
arch=('i686' 'x86_64')
url="http://gtkclipit.sourceforge.net/"
license=('GPL3')
depends=('gtk2')
makedepends=('intltool')
optdepends=('xdotool: for automatic paste')
source=(http://downloads.sourceforge.net/gtkclipit/${pkgname}-${pkgver}.tar.gz)
sha1sums=('4a9d20e1809ab08bc30d49a84a20492326caf6ce')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc
  make
  make DESTDIR=${pkgdir} install
}
