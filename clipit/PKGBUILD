# maintainer: Mihai Militaru <mihai dot militaru at xmpp dot ro>

pkgname=clipit
pkgver=1.4.0
pkgrel=1
pkgdesc="Lightweight GTK+ clipboard manager (fork of Parcellite)"
arch=('i686' 'x86_64')
url="http://gtkclipit.sourceforge.net/"
license=('GPL3')
depends=('gtk2')
makedepends=('intltool')
source=(http://downloads.sourceforge.net/gtkclipit/$pkgname-$pkgver.tar.gz)
sha1sums=('159b1e6adc95cd3c19df95676f67f206a162fe08')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
