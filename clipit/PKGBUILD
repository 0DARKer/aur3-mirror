# maintainer: Mihai Militaru <mihai.militaru@gmx.com>

pkgname=clipit
pkgver=1.3.11
pkgrel=1
pkgdesc="Lightweight GTK+ clipboard manager (fork of Parcellite)"
arch=('i686' 'x86_64')
url="http://gtkclipit.sourceforge.net/"
license=('GPL3')
depends=('gtk2')
makedepends=('intltool')
source=(http://downloads.sourceforge.net/gtkclipit/$pkgname-$pkgver.tar.gz)
md5sums=('d99e282282451fa6554f152f59a7ae90')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
