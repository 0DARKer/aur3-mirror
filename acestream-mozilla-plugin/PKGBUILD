pkgname=acestream-mozilla-plugin
pkgver=2.0.7
pkgrel=1
pkgdesc="ACE Stream multimedia plugin for web browsers"
arch=('i686' 'x86_64')
url="http://acestream.org/"
license=('unknown')
depends=('acestream-player-data' 'acestream-engine' 'qtwebkit')
conflicts=('acestream')
if [[ "$CARCH" == "i686" ]]; then
  source=("http://repo.acestream.org/ubuntu/pool/main/a/$pkgname/${pkgname}_${pkgver}-1quantal1_i386.deb")
  sha256sums=('36b9d92da92d17b4ad038ac16c6b7c0354e3e0e840331246929e9f902dd4a860')
else
  source=("http://repo.acestream.org/ubuntu/pool/main/a/$pkgname/${pkgname}_${pkgver}-1quantal1_amd64.deb")
  sha256sums=('7860689cc50f4b41c141623dc9128b38275df19ac3e27e23c9ce07997e412e71')
fi

package() {
  cd "$srcdir"
  bsdtar -xf data.tar.gz -C "$pkgdir"
}