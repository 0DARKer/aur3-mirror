pkgname=acestream-mozilla-plugin
pkgver=2.0.8
pkgrel=1
ubuntuver=raring
ubunturel=1
pkgdesc="ACE Stream multimedia plugin for web browsers"
arch=('i686' 'x86_64')
url="http://acestream.org/"
license=('unknown')
depends=('acestream-player-data' 'acestream-engine' 'qtwebkit')
conflicts=('acestream')
if [[ "$CARCH" == "i686" ]]; then
  source=("http://repo.acestream.org/ubuntu/pool/main/a/$pkgname/${pkgname}_${pkgver}-1${ubuntuver}${ubunturel}_i386.deb")
  sha256sums=('05b85368cf9c8bcf31144ad8bab3a1cd9ad90c9c9d330c28fa85d830ad4817bf')
else
  source=("http://repo.acestream.org/ubuntu/pool/main/a/$pkgname/${pkgname}_${pkgver}-1${ubuntuver}${ubunturel}_amd64.deb")
  sha256sums=('00e10b6537f8f9a3ff59b5ccbe0a17e2ce94b3075b822a5331665212d2730b19')
fi

package() {
  cd "$srcdir"
  bsdtar -xf data.tar.gz -C "$pkgdir"
}