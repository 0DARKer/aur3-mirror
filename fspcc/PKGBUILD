# Maintainer: Vincenzo Maffione <v.maffione@gmail.com>
pkgname=fspcc
pkgver=1.1
pkgrel=1
pkgdesc="An FSP compiler and LTS analysis tool"
arch=('i686' 'x86_64')
url="https://bitbucket.org/vmaffione/fspc/downloads/fspcc-1.1.tar.gz"
license=('GPL3')
depends=('bash')
makedepends=('bison' 'flex')
checkdepends=()
optdepends=('graphviz: visualizing compiled LTS')
source=("https://bitbucket.org/vmaffione/fspc/downloads/fspcc-1.1.tar.gz")
md5sums=('7190fcfc647c4e9b1db7bcbb1503e364')

build() {
	cd "$srcdir"
	make || return 1 
}

check() {
	echo "nothing to check"
}

package() {
	cd "$srcdir"
	mkdir -p "$pkgdir/usr/bin"
	cp fspcc "$pkgdir/usr/bin"
	cp ltsee "$pkgdir/usr/bin"
}
# vim:set ts=2 sw=2 et:
