# Maintainer: Vincenzo Maffione <v.maffione@gmail.com>
pkgname=fspcc
pkgver=1.6
pkgrel=1
pkgdesc="An FSP compiler and LTS analysis tool"
arch=('i686' 'x86_64')
url="https://bitbucket.org/vmaffione/fspc/downloads/fspcc-1.6.tar.gz"
license=('GPL3')
depends=('bash')
checkdepends=()
optdepends=('graphviz: visualizing compiled LTS')
source=("https://bitbucket.org/vmaffione/fspc/downloads/fspcc-1.6.tar.gz")
md5sums=('f5eebe631dce93f21c6a33ee71bad4e0')

build() {
	cd "$srcdir/release"
	make OPTIMIZE=-O2 || return 1 
}

check() {
	echo "nothing to check"
}

package() {
	cd "$srcdir/release"
	mkdir -p "$pkgdir/usr/bin"
	cp fspcc "$pkgdir/usr/bin"
	cp ltsee "$pkgdir/usr/bin"
	mkdir -p "$pkgdir/usr/share/man/man1"
	cp fspcc.1 "$pkgdir/usr/share/man/man1"
	gzip "$pkgdir/usr/share/man/man1/fspcc.1"
}
# vim:set ts=2 sw=2 et:
