# Maintainer: Vincenzo Maffione <v.maffione@gmail.com>
pkgname=fspcc
pkgver=1.2
pkgrel=1
pkgdesc="An FSP compiler and LTS analysis tool"
arch=('i686' 'x86_64')
url="https://bitbucket.org/vmaffione/fspc/downloads/fspcc-1.2.tar.gz"
license=('GPL3')
depends=('bash')
makedepends=('bison' 'flex')
checkdepends=()
optdepends=('graphviz: visualizing compiled LTS')
source=("https://bitbucket.org/vmaffione/fspc/downloads/fspcc-1.2.tar.gz")
md5sums=('eb22bcf5613a2d9449528c5d5b29f44c')

build() {
	cd "$srcdir"
	make || return 1 
}

check() {
	echo "nothing to check"
}

package() {
	cd "$srcdir"
	mkdir -p "$pkgdir/usr/bin"
	cp fspcc "$pkgdir/usr/bin"
	cp ltsee "$pkgdir/usr/bin"
	mkdir -p "$pkgdir/usr/share/man/man1"
	cp fspcc.1 "$pkgdir/usr/share/man/man1"
	gzip "$pkgdir/usr/share/man/man1/fspcc.1"
}
# vim:set ts=2 sw=2 et:
