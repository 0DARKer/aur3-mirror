# Maintainer: Vincenzo Maffione <v.maffione@gmail.com>
pkgname=fspcc
pkgver=1.0
pkgrel=1
pkgdesc="An FSP compiler and LTS analysis tool"
arch=('i686' 'x86_64')
url="https://bitbucket.org/lisztinf/fspc/downloads/fspcc-1.0.tar.gz"
license=('GPL')
depends=('bash')
makedepends=('bison' 'flex')
checkdepends=()
optdepends=('graphviz: visualizing compiled LTS')
source=("https://bitbucket.org/lisztinf/fspc/downloads/fspcc-1.0.tar.gz")
md5sums=('6433cbf82ae015c292b43f4893c4c78d')

build() {
	cd "$srcdir"
	make || return 1 
}

check() {
	echo "nothing to check"
}

package() {
	cd "$srcdir"
	mkdir -p "$pkgdir/usr/bin"
	cp fspcc "$pkgdir/usr/bin"
}
# vim:set ts=2 sw=2 et:
