#Maintainer: Di Abel (thc_flow) <thc@thc.soa1.org>

pkgname=qweechat
pkgver=DEVEL
pkgrel=120327
arch=('any')
pkgdesc="QT GUI for WeeChat"
url="http://weechat.org"
license=('GPL')
depends=('python2' 'python2-pyqt' 'python2-sip')
source=('http://weechat.org/files/src/qweechat-devel.tar.bz2')
md5sums=('f5c33f05964818d0b7134e56c2a5edcb')

build() {
  cd $srcdir/$pkgname
  python2 setup.py build
}

package() {
  cd $srcdir/$pkgname
  python2 setup.py install --root $pkgdir -O2
  install -d 755 $pkgdir/usr/bin
  printf "#!/bin/sh\nexec python2 -m qweechat.qweechat\n" > $pkgdir/usr/bin/qweechat
  chmod a+x $pkgdir/usr/bin/qweechat
}
