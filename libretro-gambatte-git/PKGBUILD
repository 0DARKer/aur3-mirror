# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-gambatte-git
_gitname=gambatte-libretro
pkgver=2013.05.19_2685b6a
pkgrel=1
pkgdesc="libretro implementation of Gambatte. (Gameboy/Gameboy Color)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/gambatte-libretro"
license=('custom')
makedepends=('git')
source=('git://github.com/libretro/gambatte-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname/libgambatte
  make -f Makefile.libretro
}

package()
{
  mkdir -p $pkgdir/usr/lib/libretro
  install -v -m644 $srcdir/$_gitname/libgambatte/gambatte_libretro.so $pkgdir/usr/lib/libretro/libretro-gambatte.so
}