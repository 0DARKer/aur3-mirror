# Contributor: scj <scj archlinux us>
pkgname=apetag
pkgver=1.12
pkgrel=2
pkgdesc="cli tool for manipulating APEv2 tags"
arch=('i686' 'x86_64')
url="http://muth.org/Robert/Apetag/"
license=('GPL3')
install=
source=(http://muth.org/Robert/Apetag/$pkgname.$pkgver.tar.gz)
md5sums=('f47a2fc02ea88018afd05e8a16f11235')

build() {
  cd "$srcdir/Apetag"
  sed -e '/C++ imports/a #include <cstdlib>' -i switch.C || return 1
  make || return 1
  mkdir -p $pkgdir/usr/bin
  install -Dm 755 apetag cddb.py rmid3tag.py tagdir.py $pkgdir/usr/bin
}

# vim:set ts=2 sw=2 et:
