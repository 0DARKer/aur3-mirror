#Maintainer: Naelstrof <naelstrof@gmail.com>

pkgname=liveamp
pkgver=1
pkgrel=1
pkgdesc="Makes your desktop wallpaper flash to active sounds!"
url="http://steamcommunity.com/id/Naelstrof"
arch=('i686' 'x86_64')
license=('MIT')
if [ "${CARCH}" = "x86_64" ]; then
depends=('libpng' 'pulseaudio' 'lib32-libpulse' 'glfw' 'glew' 'libxext' 'libx11')
else
depends=('lib32-libpng' 'pulseaudio' 'lib32-libpulse' 'glfw' 'lib32-glew' 'lib32-libxext' 'lib32-libx11')
fi
makedepends=('make' 'gcc' 'tar')
source=(http://www.1337upload.net/files/$pkgname-$pkgver.tar.gz)
md5sums=('6a66c90f58ec6115565756fc127eaddf')

build() {
   cd "$srcdir"
   tar -xf $pkgname-$pkgver.tar.gz 
   make
}


package() {
    make DESTDIR=$pkgdir install
}
