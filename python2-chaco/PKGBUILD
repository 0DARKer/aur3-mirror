# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-chaco
pkgver=3.4.0
_githubtag=98c0116
pkgrel=2
pkgdesc="Interactive 2-Dimensional Plotting"
arch=('i686' 'x86_64')
url="https://github.com/enthought/chaco"
license=('BSD')
depends=('python2' 'python2-numpy>=1.1' 'python2-enable'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('python2-distribute' 'gcc>=3.4')
conflicts=('python-enthought-chaco' 'python2-chaco-git' 'python-ets-chaco-svn')
options=(!emptydirs)

source=("https://github.com/enthought/chaco/tarball/${pkgver}")
md5sums=('fa03e0a54a6cf0825c12899ebef0cef8')

build() {
  cd "$srcdir/enthought-chaco-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

