#Contributor: Panagiotis Papadopoulos <pano_90 AT gmx DOT net>

pkgname=krosswordpuzzle
pkgver=0.15.6.2
pkgrel=1
pkgdesc="A crossword playing game for KDE"
arch=('i686' 'x86_64')
url="http://www.kde-apps.org/content/show.php/KrossWordPuzzle?content=111726"
license=('GPL')
depends=('kdegames-libkdegames' 'hicolor-icon-theme' 'shared-mime-info')
makedepends=('cmake' 'automoc4')
options=()
source=(http://kde-apps.org/CONTENT/content-files/111726-krosswordpuzzle-$pkgver.tar.gz)
md5sums=('68fb2afea20135a57f5b72557768879e')
install=$pkgname.install
build() {
  cd $srcdir
  mkdir build-$pkgname
  cd build-$pkgname
  cmake ../$pkgname-$pkgver/$pkgname -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
