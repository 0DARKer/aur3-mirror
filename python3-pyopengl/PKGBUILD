pkgname=python3-pyopengl
_pkgname=PyOpenGL
pkgver=3.0.1
pkgrel=0
arch='any'
pkgdesc="PyOpenGL is the cross platform Python binding to OpenGL and related APIs."
depends=('python3')
license='BSD'
url="http://pyopengl.sourceforge.net"
source=("http://pypi.python.org/packages/source/P/PyOpenGL/${_pkgname}-${pkgver}.tar.gz")
md5sums=('cdf03284f24279b8d9914bb680a37b5e')
build() {
  cd "${srcdir}/${_pkgname}-$pkgver/"
  python3 setup.py install --root=${pkgdir}
}

