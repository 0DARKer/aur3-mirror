pkgname=libgll
pkgver=3.0.0
pkgrel=1
pkgdesc="A C library providing generic linked list support"
arch=('i686' 'x86_64')
url="http://www.wolf-software.net/Libraries/gll/"
license=('GPL3')
depends=('liblogfile' 'liblogdb')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('394c4efd9d5b0090bf8f9a3beb2a9959')

build() {
  cd $pkgname-$pkgver

  sed 's|-Werror||g' -i configure

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
