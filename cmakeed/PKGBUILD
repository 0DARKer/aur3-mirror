pkgname="cmakeed"
pkgver=1.1.4
pkgrel=1
pkgdesc="CMake plugin for Eclipse"
arch=('i686' 'x86_64')
url="http://www.cthing.com/CMakeEd.asp"
license=('CPL')
groups=()
depends=('eclipse')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://downloads.sourceforge.net/$pkgname/CMakeEd-$pkgver.zip)
noextract=()
md5sums=('10b01063276f1fa438096966525810e6')

build()
{
  mkdir -p "$pkgdir"/usr/share/eclipse/dropins/cmakeed/eclipse
  cp -a "$srcdir"/{features,plugins} "$pkgdir"/usr/share/eclipse/dropins/cmakeed/eclipse
}
