# Maintainer: Kringel
# This PKGBUILD is a modified version of extra/eigen that provides eigen 2.x

pkgname=eigen3
pkgver=3.0.4
pkgrel=2
pkgdesc="Eigen is a lightweight C++ template library for vector and matrix math, a.k.a. linear algebra."
arch=('any')
url='http://eigen.tuxfamily.org'
license=('GPL' 'LGPL')
makedepends=('cmake' 'pkgconfig')
source=("http://bitbucket.org/eigen/eigen/get/${pkgver}.tar.bz2")
md5sums=('c4a403660311ad8d62a28c118883310f')

build() {
	cd $srcdir
	mkdir -p build
	cd build
	cmake ../eigen-eigen-13a11181fc5a \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
