# Maintainer: Kringel
# This PKGBUILD is a modified version of extra/eigen that provides eigen 2.x

pkgname=eigen3
pkgver=3.0.5
pkgrel=1
pkgdesc="Eigen is a lightweight C++ template library for vector and matrix math, a.k.a. linear algebra."
arch=('any')
url='http://eigen.tuxfamily.org'
license=('GPL' 'LGPL')
makedepends=('cmake' 'pkgconfig')
source=("${pkgname}-${pkgver}.tar.bz2::http://bitbucket.org/eigen/eigen/get/${pkgver}.tar.bz2")
md5sums=('43070952464a5bf21694e082e7fb8fce')

build() {
	cd $srcdir
	mkdir -p build
	cd build
	cmake ../eigen-eigen-13a11181fc5a \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install

	# Fix compiler error for "clang++ -std=c++0x" (should be fixed in next release, see http://comments.gmane.org/gmane.comp.lib.eigen/2632)
	sed -i 's/EIGEN_ALIGN16 const  int _Sign_PNNP/EIGEN_ALIGN16 const  unsigned int _Sign_PNNP/' ${pkgdir}/usr/include/eigen3/Eigen/src/LU/arch/Inverse_SSE.h
}
