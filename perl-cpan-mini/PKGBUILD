# CPAN Name  : CPAN-Mini
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.18
pkgname='perl-cpan-mini'
pkgver='1.100630'
pkgrel='1'
pkgdesc="create a minimal mirror of CPAN"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-file-homedir>=0.57' 'perl-libwww>=5' 'perl-uri>=1')
url='http://search.cpan.org/dist/CPAN-Mini'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/CPAN-Mini-1.100630.tar.gz')
md5sums=('de796ab32b463bfffd32b4d523ec6d73')

build() {
  DIST_DIR="${srcdir}/CPAN-Mini-1.100630"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
