pkgname='perl-cpan-mini'
pkgver='1.111015'
pkgrel='1'
pkgdesc="create a minimal mirror of CPAN"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-file-homedir>=0.57' 'perl-uri>=1' 'perl-libwww>=0')
makedepends=()
url='http://search.cpan.org/dist/CPAN-Mini'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/CPAN-Mini-1.111015.tar.gz')
md5sums=('9c2cf2fadf0ac3d42ab01ac4e7441d6d')
sha512sums=('4602c5c335d51b63ab790f2726a04e79dc78fe2bd9ce5878181607e8c99b54a8bfe5277f3f75c84c93a835c43e386698b0f3bd994dbbd33a9206859726c26e6f')
_distdir="CPAN-Mini-1.111015"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

