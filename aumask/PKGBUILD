# Contributor: Tibor Bamhor <tiborb95 at gmail.com>

pkgname=gimp-plugin-aumask
pkgver=0.7.2
pkgrel=1
pkgdesc="Advanced unsharp mask - sharpening tool. Normal and selective blur mask. Sharpness equalizer. Brightness modification via the mask (to protect local contrast)." 
url="http://code.google.com/p/aumask/"
license="GPL-3"
arch=('i686' 'x86_64')
depends=(gimp)
makedepends=()
source=(http://aumask.googlecode.com/files/aumask-$pkgver.tgz)

md5sums=('cf9db29de21d203060698d17f74b1a8a')

build() {

#defining variables
work_dir=$srcdir/aumask/


#building
cd $work_dir
gimptool-2.0  --build aumask.c || exit 1

#copying file into pkgdir to be packed
mkdir -p $pkgdir/usr/lib/gimp/2.0/plug-ins/
install -m 755 aumask $pkgdir/usr/lib/gimp/2.0/plug-ins/ 

}


