pkgname=kaption
pkgver=0.0.9
pkgrel=1
pkgdesc="A KDE utility similar to Jing or Skitch to take an edit desktop snapshots"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/Kaption?content=139302"
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
source=(http://kde-apps.org/CONTENT/content-files/139302-${pkgname}-${pkgver}.tar.gz)
license=('GPL')
md5sums=('e053d261075063d1410365eba23de674')

build() {
  cd $srcdir/${pkgname}-${pkgver}
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX='/usr' ..
  make || return 1
}
package() {
  cd $srcdir/${pkgname}-${pkgver}/build/src
  install -D -m755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
}
