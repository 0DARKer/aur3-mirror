# Maintainer: Abhishek Dasgupta <abhidg@gmail.com>
# Contributor: Ricardo <rikardo.horo@gmail.com>

pkgname=gromacs
_pkgdest=gromacs_455
_pkgver=455
pkgver=4.5.5
pkgrel=4
pkgdesc='A fast Molecular Dynamics program based on the GROMOS force field'
url='http://www.gromacs.org/'
license=("GPL")
arch=('i686' 'x86_64')
depends=('fftw' 'lesstif' 'perl' 'libxml2' 'libsm' 'libx11')
options=('!libtool')
source=(ftp://ftp.gromacs.org/pub/gromacs/${pkgname}-${pkgver}.tar.gz)
md5sums=('6a87e7cdfb25d81afa9fea073eb28468')
sha1sums=('ce4b4f9a0453dd2ffea72f28ea0bc7bb7a72f479')

build() {
  mkdir -p ${srcdir}/{single,double}
  mkdir -p ${pkgdir}/usr/local/${pkgdest}
  cp -r ${srcdir}/${pkgname}-${pkgver}/* ${srcdir}/single
  cp -r ${srcdir}/${pkgname}-${pkgver}/* ${srcdir}/double 

   msg2 "Building the doulbe precision files"
   cd ${srcdir}/double	
   cmake -DCMAKE_PREFIX=/usr/local/${_pkgdest} -DCMAKE_INSTALL_PREFIX=/usr/local/${_pkgdest} -DGMX_THREADS=ON -DGMX_SHARED_LIBS=ON -DGMX_DOUBLE=ON -DGMX_DEFAULT_SUFFIX=ON -DGMX_X11=ON -DGMX_BINARY_SUFIX=455
   make -j 4
  msg2 "Building the single precision files"
  cd ${srcdir}/single
  cmake -DCMAKE_PREFIX=/usr/local/${_pkgdest} -DCMAKE_INSTALL_PREFIX=/usr/local/${_pkgdest} -DGMX_THREADS=ON -DGMX_SHARED_LIBS=ON -DGMX_DEFAULT_SUFFIX=ON -DGMX_X11=ON -DGMX_BINARY_SUFIX=455
   make -j 4
}

package() {
  #cd "${srcdir}/${pkgname}-${pkgver}"
  msg2 "Making the single precision executables"
  cd ${srcdir}/single
  make  DESTDIR=${pkgdir} install

# installing completions in correct location
  install -D -m644 scripts/completion.bash "${pkgdir}/etc/bash_completion.d/gromacs"
#  install -D -m644 scripts/completion.zsh "${pkgdir}/usr/share/zsh/site-functions/gromacs"

# Cleaning up, kept the csh completion at default location
  msg2 "Making the double precision executables"
  cd ${srcdir}/double
  make DESTDIR=${pkgdir} install

# installing completions in correct location
  install -D -m644 scripts/completion.bash "${pkgdir}/etc/bash_completion.d/${_pkgdest}"
  install -D -m755 ${pkgdir}/usr/local/${_pkgdest}/bin/GMXRC.bash "${pkgdir}/etc/profile.d/${_pkgdest}.sh"

}
