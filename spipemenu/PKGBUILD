#Author/maintainer : ahmet emre <aecepoglu at gmail>

pkgname="spipemenu"
pkgrel=1
pkgdesc="A simple and ugly full-screen menu/launcher"
url="http://bitbucket.org/aecepoglu/spipemenu"
license=('GPL')
arch=("i686" "x86_64")
depends=("libxcb" "xcb-util" "xcb-util-keysyms" "xcb-util-wm")
provides=("spipemenu")
makedepends=("git")
_gitroot="https://bitbucket.org/aecepoglu"
_gitrepo="spipemenu"

pkgver() {
	cd $srcdir/${_gitrepo}
	pkgver=$(git describe)
}

build() {
	git clone $_gitroot/$_gitrepo
	cd $srcdir/${_gitrepo}
	make
}

package() {
	mkdir -p $pkgdir/usr/bin
	cd $srcdir/${_gitrepo}
	make DESTDIR="$pkgdir/usr/bin" install
}
