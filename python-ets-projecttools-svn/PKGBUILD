# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-projecttools-svn
pkgver=25380
pkgrel=1
pkgdesc="Tools for working with projects that have many dependencies."
arch=('any')
url="http://code.enthought.com/projects/ets_project_tools.php"
license=('BSD')
depends=('python2' 'subversion')
makedepends=('python2-distribute')
options=(!emptydirs)

_svnmod=ETSProjectTools
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

