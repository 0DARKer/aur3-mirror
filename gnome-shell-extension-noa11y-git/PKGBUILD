# Maintainer: Alucryd <alucryd@gmail.com>
pkgname=gnome-shell-extension-noa11y-git
pkgver=20111001
pkgrel=1
pkgdesc="A gnome-shell extension to remove the Accessibility icon from the panel."
arch=('any')
url="https://github.com/ecoleman/noa11y-colemando.com"
license=('GPL3')
depends=('gnome-shell')
makedepends=('git')

_gitroot="git://github.com/ecoleman/noa11y-colemando.com.git"
_gitname="noa11y-colemando.com"

build() {
    cd $srcdir
    msg "Connecting to the GIT server..."
    if [[ -d $srcdir/$_gitname ]] ; then
    	cd ${_gitname}
    	git pull origin
    	msg "The local files are updated..."
    else
    	git clone $_gitroot $_gitname
    fi
    msg "GIT checkout done."
}

package() {
    cd "$srcdir/$_gitname"
    mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/noa11y@colemando.com"
    mv * "$pkgdir/usr/share/gnome-shell/extensions/noa11y@colemando.com/"
}

