# Maintainer:Biginoz < biginoz AT free point fr>


pkgname=mobac

pkgver=1.9.1

pkgrel=1
pkgdesc="Mobile Atlas Creator (formerly known as TrekBuddy Atlas Creator) is an open source (GPL) program which creates offline atlases for GPS handhelds and cell phone applications like TrekBuddy, AndNav and other Android and WindowsCE based applications."
arch=('i686' 'x86_64')
url="http://mobac.sourceforge.net/"
license=('GPL')
depends=('java-runtime')
makedepends=()
source=("http://downloads.sourceforge.net/project/mobac/Mobile Atlas Creator/MOBAC 1.9/Mobile Atlas Creator $pkgver.zip" \
		"http://files.zentus.com/sqlitejdbc/sqlitejdbc-v056.jar" \
		"mobac.sh" \
		"directories.ini")



md5sums=('235e872af15d71598fc81cafeb55db9b'
         '8960ef957eaa42672c338049e8dd768f'
         '1bc898bc6a623b5550249f96da0f0a29'
         '1552ae46115fd8315658ed660b16cf03')

build ()
{
	[[ $CARCH = i686 ]] && rm linux-amd64.lib
	[[ $CARCH = x86_64 ]] && rm linux-x86.lib
	
	
	rm mac-universal.lib
	rm win-x86.lib
}
package() {
cd "$srcdir/"

mkdir -p $pkgdir/usr/bin

install -Dm 755 $srcdir/mobac.sh $pkgdir/usr/bin/mobac

mkdir -p $pkgdir/usr/share/mobac/titlestore
install -Dm 644 $srcdir/directories.ini $pkgdir/usr/share/mobac/directories.ini
cp -r * $pkgdir/usr/share/mobac

}

