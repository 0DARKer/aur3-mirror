# Maintainer: lolilolicon <lolilolicon#gmail#com>

pkgname=vim-html5-git
pkgver=20130715
pkgrel=1
pkgdesc="HTML5 omnicomplete and syntax"
arch=(any)
url="https://github.com/othree/html5.vim"
license=('custom')
depends=(vim)
groups=('vim-plugins')
source=(vim-html5::git://github.com/othree/html5.vim.git)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/vim-html5"
  git log -1 --format=%cd --date=short | tr -d -
}

package() {
  cd "$srcdir/vim-html5"

  local _vimdir=$pkgdir/usr/share/vim/vimfiles
  mkdir -p "$_vimdir"
  cp -r autoload/ indent/ syntax/ "$_vimdir/"
  find "$_vimdir" -type f -exec chmod 644 '{}' \;
  find "$_vimdir" -type d -exec chmod 755 '{}' \;
}
