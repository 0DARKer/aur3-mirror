# Maintainer: Giuseppe Calderaro <giuseppecalderaro@gmail.com>

pkgname=ct-ng
pkgver=svn
pkgrel=1
pkgdesc="crosstool-NG aims at building (cross) toolchains."
arch=('i686' 'x86_64')
url="http://ymorin.is-a-geek.org/dokuwiki/projects/crosstool"
license=('GPL')
source=()
md5sums=()

build() {
	cd $startdir/src/

	svn co http://ymorin.is-a-geek.org/svn/crosstool-ng/trunk
	cd trunk
	./configure --prefix=$startdir/pkg/opt/ct-ng/ || return 1
	make || return 1
	make install || return 1
}
