pkgname=ncpfs
pkgver=2.2.6
pkgrel=5
pkgdesc="ncpfs allows you to mount volumes of NetWare servers under Linux."
arch=('i686' 'x86_64')
license=('GPL')
depends=('linux>=3.0.0')
url="http://ftp.de.debian.org/debian/pool/main/n/${pkgname}/"
source=("http://ftp.de.debian.org/debian/pool/main/n/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz" 'ncpfs-2.2.6-gcc4.patch' 'ncpfs-2.2.6-missing-includes.patch' 'linux3.0_uname.patch')
md5sums=('a9ab9f135d504440202069393dd9eb36'
         '092609494c8d03e8a2272dea609a3e48'
         '32d09b12bc780ed127254de4ac9b82a2'
         'e3e3c7c148fff31162175af02f8111a7')

build() {
  cd $startdir/src/$pkgname-$pkgver

  # Patch from gentoo folks to make it compile with gcc4
  # Thanks !
  patch -Np1 < ../ncpfs-2.2.6-gcc4.patch
  patch -Np1 < ../ncpfs-2.2.6-missing-includes.patch
  patch -Np1 <../linux3.0_uname.patch
  ./configure --prefix=/usr --mandir=/usr/share
  make
  make DESTDIR=$startdir/pkg install
}


