# Daniel Kirchner <daniel at ekpyron dot org>
pkgname=mingw-w64-opencl-headers
pkgver=1.1.20110526
pkgrel=2
pkgdesc="OpenCL (Open Computing Language) header files (mingw-w64 symlinks)"
arch=('any')
license=('custom')
url='http://www.khronos.org/registry/cl/'
depends=('opencl-headers')

_targetarch32=i686-w64-mingw32
_targetarch64=x86_64-w64-mingw32

package() {
	mkdir -p $pkgdir/usr/$_targetarch32/include
	mkdir -p $pkgdir/usr/$_targetarch64/include
	ln -s ../../../usr/include/CL $pkgdir/usr/$_targetarch32/include
	ln -s ../../../usr/include/CL $pkgdir/usr/$_targetarch64/include
}
