# Maintainer: korjjj <korjjj@gmail.com>

pkgname=gns3-server
_gitver=1.0-alpha3
pkgver=1.0alpha3
pkgrel=1
pkgdesc="GNS3 server."
arch=('any')
url="https://github.com/GNS3/gns3-server"
license=('GPL3')
depends=('python-pyzmq' 'python-tornado' 'python-jsonschema' 'dynamips')
optdepends=('python-netifaces-git: ')
conflicts=()
source=("https://github.com/GNS3/${pkgname}/archive/v${_gitver}.tar.gz")
md5sums=('723f0bfd3b7c3a6b91386c14d98b1d78')

pkgver() {
	echo ${_gitver} | tr -d '-'
}

package() {
  cd ${srcdir}/${pkgname}-${_gitver}
  python3 setup.py install --root=${pkgdir} --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
