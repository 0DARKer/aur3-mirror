# Maintainer: korjjj <korjjj+aur@gmail.com>

pkgname=gns3-server
_pkgver=1.0-beta3
pkgver=1.0beta3
pkgrel=1
pkgdesc='GNS3 server. This is an early release of the new GNS3.'
arch=('any')
url='https://github.com/GNS3/gns3-server'
license=('GPL3')
makedepends=('python-setuptools')
depends=('python-pyzmq' 'python-tornado' 'python-jsonschema')
optdepends=('python-netifaces')
conflicts=()
install=${pkgname}.install
md5sums=('202f598e08600429b353b6270ee9b382'
         'f602390385890dab14f68e5e0a8cac2d')

source=("https://github.com/GNS3/${pkgname}/archive/v${_pkgver}.tar.gz"
        "${pkgname}@.service")

pkgver() {
	echo ${_pkgver} | tr -d '-'
}

package() {
  cd ${srcdir}/${pkgname}-${_pkgver}
  python setup.py install --root=${pkgdir} --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm644 "${srcdir}/${pkgname}@.service" "${pkgdir}/usr/lib/systemd/system/${pkgname}@.service"
}

# vim:set ts=2 sw=2 et:
