# Maintainer: korjjj <korjjj+aur[at]gmail[dot]com>

pkgname=gns3-server
pkgver=1.0
pkgrel=1
pkgdesc='GNS3 server. This is an early release of the new GNS3.'
arch=('any')
url='https://github.com/GNS3/gns3-server'
license=('GPL3')
makedepends=('python-setuptools')
depends=('python-pyzmq' 'python-tornado' 'python-jsonschema')
optdepends=('python-netifaces')
install="${pkgname}.install"
md5sums=('bf0b0d0f931f0db011f911946e97f8af'
         'f602390385890dab14f68e5e0a8cac2d')

source=("https://github.com/GNS3/${pkgname}/archive/v${pkgver}.tar.gz"
        "${pkgname}@.service")

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm644 "${srcdir}/${pkgname}@.service" "${pkgdir}/usr/lib/systemd/system/${pkgname}@.service"
}

# vim:set ts=2 sw=2 et:
