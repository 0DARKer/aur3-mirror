# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-envisageplugins-svn
pkgver=25948
pkgrel=1
pkgdesc="Plug-ins for the Envisage framework."
arch=('any')
url="http://code.enthought.com/projects/envisage_plugins.php"
license=('BSD')
depends=('python2' 'python-ets-envisagecore-svn'
         'python-ets-traitsgui-svn' 'python-ets-traits-svn'
         'python-ets-enthoughtbase-svn')
makedepends=('subversion' 'python2-distribute')
conflicts=('python-enthought-utils')
options=(!emptydirs)

_svnmod=EnvisagePlugins
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1

  # fix ommited preferences.ini file
  _target="$pkgdir`python2 -c 'from distutils.sysconfig import get_python_lib; print get_python_lib()'`"
  cp enthought/envisage/ui/single_project/preferences.ini \
    "${_target}"/enthought/envisage/ui/single_project
  cp enthought/plugins/remote_editor/preferences.ini \
    "${_target}"/enthought/plugins/remote_editor
}

