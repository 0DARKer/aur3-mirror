# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
pkgname=perl-www-shorten
pkgver=3.02
pkgrel=1
pkgdesc="Interface to URL shortening sites"
arch=('any')
url="http://search.cpan.org/dist/WWW-Shorten/"
license=('GPL' 'PerlArtistic')
source=(http://search.cpan.org/CPAN/authors/id/D/DA/DAVECROSS/WWW-Shorten-$pkgver.tar.gz)
depends=('perl' 'perl-libwww')
optdepends=('perl-config-auto: for configuration file support')
checkdepends=('perl-test-simple')
md5sums=('4a9be4d5c34b5726cd11a143dae0e0b8')

build() {
  cd "$srcdir/WWW-Shorten-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make install DESTDIR="$pkgdir"

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
