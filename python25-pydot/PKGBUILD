# Maintainer: Tocer Deng <tocer.deng@gmail.com>

pkgname=python25-pydot
pkgver=1.0.2
pkgrel=2
pkgdesc="pydot compiled with python25"
arch=(i686 x86_64)
url="http://code.google.com/p/pydot/"
license=(MIT)
depends=(python25-pyparsing graphviz)
source=("http://pydot.googlecode.com/files/pydot-$pkgver.tar.gz")
md5sums=('e5cbbe7ef3d221c05c96e4bd4bcf95f9')

build() {
  cd "$startdir/src/pydot-$pkgver"

  python2.5 setup.py install --prefix=/usr --root=$startdir/pkg
  rm $pkgdir/usr/README
  rm $pkgdir/usr/ChangeLog
  rm $pkgdir/usr/LICENSE
  install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:

