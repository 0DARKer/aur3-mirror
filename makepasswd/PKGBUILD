# $Id: PKGBUILD 356 2008-04-18 22:56:27Z aaron $
# Contributor: Manolis Tzanidakis
# Contributor: Travis Willard <travisw@wmpub.ca> 
# Maintainer: Thayer Williams <thayer@archlinux.org> 

pkgname=makepasswd
pkgver=1.10
pkgrel=3
pkgdesc="Generates true random passwords with the emphasis on security over pronounceability"
arch=('i686' 'x86_64')
url="http://people.defora.org/~khorben/projects/makepasswd/"
license=('GPL')
depends=('perl' 'perl-passwd-md5')
makedepends=('gzip')
source=(http://ftp.de.debian.org/debian/pool/main/m/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=('55842bb4c064ebcdedffb4afd5f0945a')

build() {
  cd $srcdir/$pkgname-$pkgver

  install -Dm0755 makepasswd $pkgdir/usr/bin/makepasswd || return 1
  gzip -f makepasswd.1 || return 1
  install -Dm0644 makepasswd.1.gz $pkgdir/usr/share/man/man1/makepasswd.1.gz || return 1
}
