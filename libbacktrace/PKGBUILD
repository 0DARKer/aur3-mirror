pkgname=libbacktrace
pkgver=3.0.0
pkgrel=1.1
pkgdesc="A C library replicating the bt functionality from gdb, allowing function stack tracing"
arch=('i686' 'x86_64')
url="http://www.wolf-software.com/Libraries/backtrace"
license=('GPL3')
depends=('liblogfile>=3')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('7353638ed22c418c156015c4e23de899')

build() {
  cd $pkgname-$pkgver

  sed 's|-Werror||g' -i configure

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
