pkgname=libbacktrace
pkgver=3.0.0
pkgrel=1
pkgdesc="A C library replicating the bt functionality from gdb, allowing function stack tracing"
arch=('i686' 'x86_64')
url="http://www.wolf-software.net/Libraries/backtrace/"
license=('GPL3')
depends=('liblogfile>=3')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('80349670fb6d1d0e2f71fa38624d1342')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}

