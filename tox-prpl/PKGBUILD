# Maintainer: Bart≈Çomiej Piotrowski <bpiotrowski@archlinux.org>

pkgname=tox-prpl
pkgver=0.4.0
pkgrel=1
pkgdesc='Tox protocol plugin for Pidgin/libpurple'
arch=('i686' 'x86_64')
url='http://tox.dhs.org'
license=('GPL3')
depends=('tox-git' 'libpurple' 'libsodium')
source=(https://github.com/jin-eld/tox-prpl/archive/v$pkgver.tar.gz)
md5sums=('251a3fbf00ed8f80502b96b7eb987013')

prepare() {
  cd $pkgname-$pkgver
  autoreconf -fi
}

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  make -C $pkgname-$pkgver DESTDIR="$pkgdir" install
}

