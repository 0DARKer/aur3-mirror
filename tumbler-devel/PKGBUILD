# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>
# Contributor: Andreas Radke <andyrtr@archlinux.org>

pkgname=tumbler-devel
pkgver=0.1.21
pkgrel=1
pkgdesc="D-Bus service for applications to request thumbnails (Development Version)"
arch=('i686' 'x86_64')
license=('GPL2' 'LGPL')
url="http://git.xfce.org/xfce/tumbler/"
groups=('xfce4-devel')
depends=('poppler-glib' 'dbus-glib')
makedepends=('intltool' 'ffmpegthumbnailer')
optdepends=('ffmpegthumbnailer: for video thumbnails')
conflicts=('tumbler' 'tumbler-git')
options=('!libtool')
source=(http://archive.xfce.org/src/apps/tumbler/0.1/tumbler-${pkgver}.tar.bz2)
md5sums=('2ef0d30750f95efe345de4655049d4f6')

build() {
  cd ${srcdir}/tumbler-${pkgver}
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib/xfce4 \
	--disable-static \
	--disable-debug
  make
}

package() {
  cd ${srcdir}/tumbler-${pkgver}
  make DESTDIR=${pkgdir} install
}
