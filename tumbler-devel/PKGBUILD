# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>
# Contributor: Andreas Radke <andyrtr@archlinux.org>

pkgname=tumbler-devel
pkgver=0.1.5
pkgrel=1
pkgdesc="D-Bus service for applications to request thumbnails (Development Version)"
arch=(i686 x86_64)
license=('GPL2' 'LGPL')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('poppler-glib' 'dbus-glib' 'ffmpegthumbnailer')
makedepends=('pkgconfig' 'intltool' 'xfce4-dev-tools-devel')
conflicts=('tumbler' 'tumbler-git')
replaces=('tumbler' 'tumbler-git')
options=('!libtool')
source=(http://archive.xfce.org/src/apps/tumbler/0.1/tumbler-${pkgver}.tar.bz2)
md5sums=('e3b9096bcadd4ab5cadb87007df95773')

build() {
  cd ${srcdir}/tumbler-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static
  sed -i 's|^hardcode_libdir_flag_spec=.*|hardcode_libdir_flag_spec=""|g' libtool
  sed -i 's|^runpath_var=LD_RUN_PATH|runpath_var=DIE_RPATH_DIE|g' libtool
  make
}

package() {
	cd ${srcdir}/tumbler-${pkgver}
	make DESTDIR=${pkgdir} install
}
