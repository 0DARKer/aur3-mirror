# Generator  : CPANPLUS::Dist::Arch 0.20
pkgname='perl-class-accessor-grouped'
pkgver='0.09003'
pkgrel='1'
pkgdesc="Lets you build groups of accessors"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-class-inspector' 'perl-mro-compat' 'perl-sub-identify' 'perl-sub-name>=0.04')

url='http://search.cpan.org/dist/Class-Accessor-Grouped'

source=('http://search.cpan.org/CPAN/authors/id/R/RK/RKITOVER/Class-Accessor-Grouped-0.09003.tar.gz')
md5sums=('bb1e633bae6ee0c05f77cd5ef29f2700')

build() {
  DIST_DIR="${srcdir}/Class-Accessor-Grouped-0.09003"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

