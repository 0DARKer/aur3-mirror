pkgver='0.10003'
pkgrel='1'
pkgdesc="Lets you build groups of accessors"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.6.2' 'perl-class-inspector' 'perl-class-xsaccessor>=1.11' 'perl-sub-name>=0.05')
makedepends=('perl-test-exception>=0.31')
url='http://search.cpan.org/dist/Class-Accessor-Grouped'
source=('http://search.cpan.org/CPAN/authors/id/F/FR/FREW/Class-Accessor-Grouped-0.10003.tar.gz')
