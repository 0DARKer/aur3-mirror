# Maintainer: Moritz Bunkus <moritz@bunkus.org>

pkgname='perl-class-accessor-grouped'
pkgver='0.10009'
pkgrel='2'
pkgdesc="Lets you build groups of accessors"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-class-inspector' 'perl-class-xsaccessor' 'perl-sub-name')
makedepends=('perl-extutils-makemaker' 'perl-test-exception' 'perl-module-runtime')
url='http://search.cpan.org/dist/Class-Accessor-Grouped'
source=('http://search.cpan.org/CPAN/authors/id/R/RI/RIBASUSHI/Class-Accessor-Grouped-0.10009.tar.gz')
md5sums=('4127aaf7243237f8cca16c0db5c8bca4')
sha512sums=('e628a78c003ddf575bb8f9ea4d859cfefca5acbd023aec38ec1bd531040381b2bffcefd93fad57ca680f62204284af063f8d478cf6bc7bab7344fe965bdc8ef3')

build() {
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  cd "${srcdir}/Class-Accessor-Grouped-0.10009"
  /usr/bin/perl Makefile.PL
  make
}

check() {
  cd "${srcdir}/Class-Accessor-Grouped-0.10009"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
  make test
}

package() {
  cd "${srcdir}/Class-Accessor-Grouped-0.10009"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
