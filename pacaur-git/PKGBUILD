# Maintainer: Remy Marquis <remy dot marquis at gmail dot com>

pkgname=pacaur-git
pkgver=20130126
pkgrel=1
pkgdesc="A fast workflow AUR wrapper using cower as backend"
arch=('any')
url="https://github.com/Spyhawk/pacaur"
license=('GPL')
depends=('cower' 'expac' 'sudo')
optdepends=('pacman-color: colorized output')
makedepends=('git' 'perl')
provides=('pacaur')
conflicts=('pacaur')
backup=('etc/xdg/pacaur/config')
_gitroot='http://github.com/Spyhawk/pacaur.git'
_gitname='pacaur'

build() {

  msg "Connecting to github GIT server...."

  if [[ -d "$_gitname" ]] ; then
     cd $_gitname && git pull origin
     msg "The local files are updated."
  else
     git clone "$_gitroot" "$_gitname"
     msg "GIT checkout done."
     cd $_gitname
  fi

  mkdir -p "$pkgdir/etc/xdg/pacaur"
  install -D -m644 ./config $pkgdir/etc/xdg/pacaur/config
  install -D -m755 ./pacaur $pkgdir/usr/bin/pacaur
  install -D -m755 ./bash.complete $pkgdir/usr/share/bash-completion/completions/pacaur

  mkdir -p "$pkgdir/usr/share/man/man8/"
  pod2man --section=8 --center="Pacaur Manual" --name="PACAUR" --release="$pkgname $pkgver" ./README.pod > pacaur.8
  install -m 644 ./pacaur.8 $pkgdir/usr/share/man/man8/pacaur.8 

  # use git version number
  sed -i "s/version=\"[0-9].[0-9].[0-9]\"/version=\"$pkgver-git\"/g" $pkgdir/usr/bin/pacaur

}
