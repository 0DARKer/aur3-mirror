pkgname=r-cran-xml
pkgver=3.95_0.1
pkgrel=1
pkgdesc="Tools for parsing and generating XML within R and S-Plus."
url="http://cran.r-project.org/web/packages/XML/index.html"
license=('BSD')
arch=('i686' 'x86_64')
makedepends=('gcc' 'gcc-fortran')
depends=('r' )
optdepends=('r-cran-bitops' 'r-cran-rcurl')
source=(http://cran.r-project.org/src/contrib/XML_3.95-0.1.tar.gz)
build() {
    mkdir -p ${pkgdir}/usr/lib/R/library
    cd ${srcdir}
    R CMD INSTALL XML -l ${pkgdir}/usr/lib/R/library
    for lic in "LICENSE" "LICENCE" "COPYING"; do
        if [ -f ${srcdir}/XML/${lic} ]; then
            install -Dm644 ${srcdir}/XML/${lic} ${pkgdir}/usr/share/licenses/r-cran-xml/${lic}
        fi
    done
}
md5sums=('99704cb3e240f5ee56ccd11425831acb')
