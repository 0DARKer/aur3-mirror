#!/bin/bash
# Maintainer: Alireza Savand < alireza.savand with love gmail :|>

pkgname=yodownet
pkgver=2012.02.29
pkgrel=1
pkgdesc="yoDownet, The Previous Generation Graphical Download Manager, Implemented on Qt"
arch=(any)
url="http://sourceforge.net/projects/yodownet"
license=("GPLv3")
makedepends=('qt' 'make')
depends=('qt')
provides=("yodownet")
source=("http://sourceforge.net/projects/$pkgname/files/sources/$pkgname-$pkgver.tar.gz")
sha1sums=('c633c99caa2fa332048f44fc1e70f36663859051')

build() {
        cd "$srcdir"
	lupdate yoDownet.pro || return 1
	lrelease yoDownet.pro || return 1
        qmake -config release TRANSLATION_PATH='/usr/share/yodownet/translations/' || return 1
        make || return 1
}

package() {
        cd "$srcdir"
        make  install INSTALL_ROOT="${pkgdir}" || return 1
}
