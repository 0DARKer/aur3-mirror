#!/bin/bash
# Maintainer: Alireza Savand < alireza.savand with love gmail :|>

pkgname=yodownet
pkgver=2012.02.11
pkgrel=1
pkgdesc="yoDownet, The Previous Generation Graphical Download Manager, Implemented on Qt"
arch=(any)
url="http://sourceforge.net/projects/yodownet"
license=("GPLv3")
makedepends=('libmaia' 'qt' 'make')
depends=('qt' 'libmaia')
provides=("yodownet")
conflicts=("yodownet")
source=("http://sourceforge.net/projects/$pkgname/files/sources/$pkgname-src-$pkgver.tar.gz")
md5sums=('c6276c6cf88d053a8f8ffbccbc1dd545')

build() {
	cd "$srcdir"
	qmake -config release || return 1
	make || return 1
}

package() {
	cd "$srcdir"
	install -Dm775 ${srcdir}/yoDownet ${pkgdir}/usr/bin/yoDownet || return 1
	msg "Installing *.desktop stuff :)"
	install -Dm644 ${srcdir}/installers/yoDownet.desktop ${pkgdir}/usr/share/applications/yoDownet.desktop || return 1
	install -Dm644 ${srcdir}/images/yoDownet_64.svg ${pkgdir}/usr/share/pixmaps/yoDownet_64.svg || return 1
}
