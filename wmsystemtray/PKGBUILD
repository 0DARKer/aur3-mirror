# Contributor: Mario Blättermann <mariobl@gnome.org>
# Maintainer: Mario Blättermann <mariobl@gnome.org>
pkgname=wmsystemtray
pkgver=1.2
pkgrel=1
pkgdesc="system tray designed as a Window Maker dock app"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/wmsystemtray/"
license=('GPL')
depends=('gcc-libs' 'libxext')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://www.dockapps.org/download.php/id/814/wmsystemtray-1.2.tar.gz")

noextract=()
md5sums=('425b3cc8fc717a997a67706b8013ad21')

build() {
  unset LDFLAGS
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
  install -d "$pkgdir/usr/bin"
  make DESTDIR=$pkgdir/usr/bin install
}
