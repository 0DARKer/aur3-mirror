#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.11.30
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm pm2ml reflector aria2)
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.11.30.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.11.30.tar.xz.sig
)
sha512sums=(
  8c4169219386afdb034dec591c5c11882192fe3515a137f3b956689c0333899f5bcea03fade608ab9f905ba9feb668671f406181165184449728fcfd9686ae58
  79ed29476da7659b6f9ea4aa005f3b87438108862ecb7d96ebb183c48dcf0959fcd62a98a4ea5c754e5722cda66262bf36f0e9cf80f7df6503d2b335cc73f42f
)
md5sums=(
  979baa552d09fe802c0ff3c1246794d5
  15770a2998f8c71323319ebb64546d25
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
}

