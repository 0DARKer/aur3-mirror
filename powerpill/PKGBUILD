#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm pm2ml reflector)
backup=(etc/powerpill/powerpill.conf etc/powerpill/aria2.conf)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.tar.xz.sig
)
sha512sums=(
  ae5934bc140e69f942b027150c71e19289bc6fee7e071377cce8334d14532c0d494d297bd3851d6710e543ab8d8c7717012c1f1315db691952ab7d59d047070a
  df36973d6b8f2fd76f0dee6ec9915d5bf1f3d0d47eefd00bd3f3613ea83903f3b1f2854789b78141d0c31b27cbf314948b007bd9ac08f7d0f5f1ddb30b32e738
)
md5sums=(
  0c4bb1125ee2d92411feddcc4952c598
  0f45120a96cc015b4bfd23cfa32e5532
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  for conf_ in {powerpill,aria2}.conf
  do
    install -Dm644 "$conf_" "$pkgdir/etc/powerpill/$conf_"
  done
}

