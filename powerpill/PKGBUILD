#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.12.5
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm 'pm2ml>=2012.11.29.3' reflector aria2)
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.5.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.5.tar.xz.sig
)
sha512sums=(
  422d0e141f49bcc12e87df93e02657bd3beb081548585e3fa0a136c938d60c1063ca7d7dd82536a9258e729ae17bc2fe16ba7d766c7e9a20e505aa05dda52400
  5d273b0c60daadb8fb018787f44162abbf4b527ec7535bccd3d4e4825919a3953a9098c7cc0cd3560c8c451e4ed95e406153d09b9edbf3922dd740bac9616dce
)
md5sums=(
  12e4a4c66981030364fdab403c001723
  3d4f6d1682abb097bfab88fa461a0a73
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
  install -Dm644 "powerpill-bash-completion.sh" "$pkgdir/usr/share/bash-completion/completions/powerpill"
}

