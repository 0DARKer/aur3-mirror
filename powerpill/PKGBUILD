#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.11
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm pm2ml reflector aria2)
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.11.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.11.tar.xz.sig
)
sha512sums=(
  766a70d7692fe6a7f3c497ec16d58e4127a82c781969230f05947e62f9b1c350110fa7a092c7b57932bedb156e2770f6364b29742a31e7a2c5675f55524c6e52
  3a276f401be454585c2304a23b50d288ebdddc9bd7ce9ee0178e481b6a66f9f2c872eb3ad7da3be8c7c2ef2c07bd6c48b7f113581c03acd75aea6c394b072ce9
)
md5sums=(
  955d6ee8a20201e4560ef03df24f8023
  bce6c338f167652579066bc985d732fd
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
}

