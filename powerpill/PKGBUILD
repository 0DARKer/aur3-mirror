#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.12.12.1
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm 'pm2ml>=2012.11.29.3' reflector aria2)
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.12.1.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.12.1.tar.xz.sig
)
sha512sums=(
  7000802d262a76b96daab6e86a3cf2e82695ebc906e9a3404d3ce9332c8dbca9c5a7b542c35723308645580bc9e9e489e81a26b02b38b88b8bd7158aa529ccc6
  ccce7663f4828ac920421cb8925cc8acac9b5b01bf8bd9a72115f98b3ccd82c60049c76bc3230399b051ee3b0eabc4d6a199725c0df4abb4f50fd96a42db146a
)
md5sums=(
  cf2e5058137f560c5cf22d17c3b59de6
  35718e554cf11a685d5d3b4f1b769058
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
  install -Dm644 "powerpill-bash-completion.sh" "$pkgdir/usr/share/bash-completion/completions/powerpill"
}

