#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.12.2
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm 'pm2ml>=2012.11.29.3' reflector aria2)
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.2.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.2.tar.xz.sig
)
sha512sums=(
  94d6f1014fa34c7f30efaf30aa523622c418bcb794b2f68f8700fcd81d079a32ac654473249eff5f532819324b7b25297922574a743d2a1f016dc3c2e6537a70
  9879b14f9dc09c6d405390375f9c48143338e85c5b9e1a7d3b8fdc50e3183dd9a76ffc145d94cbea0a54f18c673da24fadbcec8d60c231e86e11a96ff3c6334b
)
md5sums=(
  9a3d7bec876b3038c9675ec50d0d0b9a
  b05a41214e5e3897ad3c1257f98d0d67
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
  install -Dm644 "powerpill-bash-completion.sh" "$pkgdir/usr/share/bash-completion/completions/powerpill"
}

