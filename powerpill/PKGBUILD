#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.12.24.1
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm 'pm2ml>2012.12.12' reflector aria2)
optdepends=('rsync: Rsync download support')
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/src/powerpill-2012.12.24.1.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/src/powerpill-2012.12.24.1.tar.xz.sig
)
sha512sums=(
  b5a76ffa824dc4295ef6c2c192f17f8262c7239dd6aeebd72876c44890a6a577480e4b07bbb5b00c0280657355b7e57be4fc4d742eb2d4d8ee06b17f2e8a25d0
  e58582fb42f21fdcfe45386dd288e921e2b8f8b503e4f35eb20293735fed57945d2abf56e9f6457d6359abfb35d1ff65a26cc1b68bf91a1f9d125dba658aa01f
)
md5sums=(
  338afc753b8470c479895c2522e22f3b
  e7eb47c046664b1e4ceb0fd23d29d1be
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
  install -Dm644 "powerpill-bash-completion.sh" "$pkgdir/usr/share/bash-completion/completions/powerpill"
}

