#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.11.29.5
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm pm2ml reflector aria2)
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.11.29.5.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.11.29.5.tar.xz.sig
)
sha512sums=(
  dbb3ea65bcac30cd6f156440c4617199901835da937dfdde7051adbb176c2a2da6cf80ddd57d24b2f210f66cd652c263a173dcc6f49fb439f4bb27fa7b81d9ed
  222aa3253023fb5a738537c076ebab4cf15ba69f1bee50f4898ace26ab7647597dd9b6f07a90b5820341910fba5ab2a23c5670091f31c6fd83e7d634f54dc24e
)
md5sums=(
  55ccba97efc5b825e54a8faccb7a67ba
  57d5968e026199723bb78dc9e4036cae
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
}

