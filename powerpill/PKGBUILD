#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.12.12.4
pkgrel=2
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm 'pm2ml>=2012.11.29.3' reflector aria2)
optdepends=('rsync: Rsync download support')
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.12.4.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.12.4.tar.xz.sig
)
sha512sums=(
  9d8b199cb48a48f39af109725881c9125e3df312ca83e4a81a12e0d6177775881081a0ee2f29ea2885e74a50dfc41244ff4cebd1bd78c059ff96bc1550e3fdb7
  39f2ad3f6207f700cb05b0fa480914d58d085cac6a2d43f8b9aeb5bea0be761bbcdee60271e373fdbead6c56417337d659b5e8dcf2767ff4a27a8c4cb100a652
)
md5sums=(
  e581193fea388d03c6a9ee6807e7f89c
  2eaabaaa3e09b3284affed13a14e873b
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
  install -Dm644 "powerpill-bash-completion.sh" "$pkgdir/usr/share/bash-completion/completions/powerpill"
}

