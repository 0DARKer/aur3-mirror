#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=powerpill
pkgver=2012.12.12
pkgrel=1
pkgdesc='Pacman wrapper for parallel and segmented downloads.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/powerpill"
depends=(python3 pyalpm 'pm2ml>=2012.11.29.3' reflector aria2)
backup=(etc/powerpill/powerpill.json)
source=(
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.12.tar.xz
  http://xyne.archlinux.ca/projects/powerpill/archives/powerpill-2012.12.12.tar.xz.sig
)
sha512sums=(
  5bf85800643ba55703749fbf329b069c8a375a98611ea1f7be0465b77c63d8fa177d18fcf5104898463dba70c635c78228e3437481c28e2fcb2aef1f895c3134
  0f1ad3d3676dde5de55142d516722cfb3af2678dcad00c186ba1be133b4471e44569bb6824f2f5235f31e3e606590cb664231092e1dc0a63c8e3eb6b4f320cd9
)
md5sums=(
  7b6290842ded8980fedb3861ea022649
  876909f82116787d2c054059f8db95dc
)
install=powerpill.install

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "powerpill.json" "$pkgdir/etc/powerpill/powerpill.json"
  install -Dm644 "man/powerpill.json.1.gz" "$pkgdir/usr/share/man/man1/powerpill.json.1.gz"
  install -Dm644 "powerpill-bash-completion.sh" "$pkgdir/usr/share/bash-completion/completions/powerpill"
}

