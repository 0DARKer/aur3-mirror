# Maintainer: Johannes Schleifenbaum <johannes [at] js-webcoding [dot] de>
# Please report issues at https://github.com/jojosch/pkgbuilds

pkgname="phpmd"
pkgver=2.0.0
pkgrel=1
pkgdesc="Takes a given PHP source code base and look for several potential problems within that source."
url="http://phpmd.org/"
license="custom"
arch=("any")
depends=("php>=5.3.0")
install="${pkgname}.install"
source=(
  "http://static.phpmd.org/php/${pkgver}/${pkgname}.phar"
  "LICENSE"
)
sha1sums=(
  "7f914e4ca239a84ef204c9064a37af3b1acf3c20"
  "49a94fd699270de8599423fd3302cb6880f9c224"
)
sha256sums=(
  "05b0e7d843e350196df9f350ec64a880e2d3c8edf81208f93b46c341a589f16c"
  "faad499ee7fe2e75e18565c6b6b5cf43a3dc97a6eebffbfa5840d9205339fa9b"
)

package() {
  cd "${srcdir}"
  install -D -m644 "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -D -m755 "${pkgname}.phar" "${pkgdir}/usr/share/webapps/bin/${pkgname}.phar"
  install -d "${pkgdir}/usr/bin"
  ln -s "/usr/share/webapps/bin/${pkgname}.phar" "${pkgdir}/usr/bin/${pkgname}"
}
