# Maintainer: Brandon Mulcahy <brandon@jangler.info>
pkgname=mariopants
pkgver=1.1
pkgrel=1
pkgdesc='Music editor based on SNES Mario Paint.'
arch=('i686' 'x86_64')
url="http://rainwarrior.ca/projects/nes/mariopants.html"
license=('unknown')
depends=('sdl' 'tcl' 'tk' 'zlib')
source=("http://rainwarrior.ca/projects/nes/mariopants11src.tar.gz")
sha256sums=('0eada11b38837662b3f0dba8cd78a2e3888c992cd3714507ca5921f5249c0490')

build() {
  cd "${srcdir}"
  make mariopants
}

package() {
  cd "${srcdir}"
  install -Dm755 ${pkgname} "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 ${pkgname}.1 "${pkgdir}/usr/share/man/man1/${pkgname}.1"
}
