# Maintainer: H.Gökhan Sarı <hsa2@difuzyon.net>

pkgname=light-themes-maverick
pkgver=0.1.7
pkgrel=2
pkgdesc="Ubuntu 10.10's light themes. (Ambiance-maverick)"
arch=('i686' 'x86_64')
license=('GPL')
url="https://launchpad.net/~murrine-daily/+archive/ppa"
depends=('gtk-engine-murrine')
makedepends=('bzr')
conflicts=('ambiance-theme-ubuntu')

_bazaarbranch="lp:light-themes"
_bazaarmod="light-themes"

build() {
  cd $startdir/src
  msg "Connecting to bazaar server...."
  bzr branch $_bazaarbranch

  msg "Bazaar checkout done or server timeout"
  msg "Starting make..."
  cd $_bazaarmod
  #
  # INSTALL
  #
  mkdir -p $pkgdir/usr/share/themes/

  cp -R $srcdir/light-themes/Ambiance $pkgdir/usr/share/themes/
  cp -R $srcdir/light-themes/Ambiance-CSD $pkgdir/usr/share/themes/
  cp -R $srcdir/light-themes/Radiance $pkgdir/usr/share/themes/

}
