pkgname=radware
pkgver=1.1
pkgrel=3
pkgdesc="Software for analysing collision data"
url="http://radware.phy.ornl.gov/"
license=""
depends=(lesstif)
arch=('i686' 'x86_64')
makedepends=(gcc)
source=("ftp://radware.phy.ornl.gov/pub/radware/unix/rw0${pkgver}.${pkgrel}.tgz")
build() {
  cd $startdir/src/rw01/src
  #Change settings in makefile appropriately
  sed -e "s|\(    INSTALL_DIR = \).*|\1${pkgdir}|"\
      -e "s/\/usr\/bin\/install/\/bin\/install/"\
      -e "s/\(-m [0-9]\{4\}\).*/\1/"\
      Makefile.linux > Makefile
  make || return 1
  make install
}
md5sums=('56ea86c8e4b3454cc10f66a4b221663a')
