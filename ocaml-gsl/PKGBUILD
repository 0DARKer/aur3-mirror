# Maintainer: Scott Smith <jcdenton513 at gmail dot com>
# Contributor: Roman Timushev <romikt@gmail.com>
pkgname=ocaml-gsl
origname=ocamlgsl
pkgver=0.6.0
pkgrel=4
pkgdesc="GNU scientific library for OCaml"
arch=('i686' 'x86_64')
url="http://oandrieu.nerim.net/ocaml/gsl/"
license=('GPL')
groups=()
depends=('ocaml>=3.07' 'gsl>=1.9')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://oandrieu.nerim.net/ocaml/gsl/$origname-$pkgver.tar.gz)
noextract=()
md5sums=('04795211d49c2fe1f59a5669f33ec5fc')

build() {
  cd "$srcdir/$origname-$pkgver"
  make INSTALLDIR="$pkgdir`ocamlc -where`/gsl" install
  for i in *.mli; do
    cp $i "$pkgdir`ocamlc -where`/gsl/"
  done
}
