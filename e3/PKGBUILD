# Contributor: Roberto Alsina <ralsina@kde.org>

pkgname=e3
pkgver=2.7.1
pkgrel=3
pkgdesc="A full-screen text editor written in assembler"
arch=('i686' 'x86_64')
url="http://mitglied.lycos.de/albkleine/"
license=('GPL')
makedepends=('nasm')
source=(http://mitglied.lycos.de/albkleine/$pkgname-$pkgver.tar.gz)
md5sums=('ed7146706579bf0e40c6de258fc44f25')
options=(!strip)
  
build() {
   cd $startdir/src/$pkgname-$pkgver
   make clean
   make || return 1
   sed -i 's|$(BINDIR)/e3 |e3 |' Makefile
   make PREFIX=$startdir/pkg/usr install
}
