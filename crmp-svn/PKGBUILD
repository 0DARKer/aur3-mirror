# Maintainer: Philipp pba3h11aso <philsch@hotmail.de>
pkgname=crmp-svn
pkgver=15
pkgrel=1
pkgdesc="Classic Ramona Audio Player"
arch=(i686 x86_64)
url="http://code.google.com/p/crmp/"
license="MPL"
depends=('fmodex' 'qt' 'glut')
provides=('crmp')
conflicts=('crmp' 'crmp-bin')
source=(crmp.desktop
        application_crmp.png)
        
md5sums=('0a7c12db641281f2cf28ccd0c6033d9d' 'ecacb295c361d6629d0dcf5d8cfd8ac7')

_svntrunk=http://crmp.googlecode.com/svn/trunk/
_svnmod=crmp

build() {
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  
  cd $_svnmod/
  mkdir build
  cd build
  
  qmake ../crmp.pro -r -spec linux-g++
  make 
  
  mkdir -p $startdir/pkg/usr/bin
  cp crmp $startdir/pkg/usr/bin/
  
  cd $startdir/src/
  mkdir -p $startdir/pkg/usr/share/applications/
  cp crmp.desktop $startdir/pkg/usr/share/applications/
  mkdir -p $startdir/pkg/usr/share/icons/crmp/
  cp application_crmp.png $startdir/pkg/usr/share/icons/crmp/application_crmp.png

}