# Maintainer: Philipp pba3h11aso <philsch@hotmail.de>
pkgname=crmp-svn
pkgver=32
pkgrel=1
pkgdesc="Classic Ramona Audio Player"
arch=(i686 x86_64)
url="http://code.google.com/p/crmp/"
license="MPL"
depends=('fmodex' 'qt' 'glut')
provides=('crmp')
conflicts=('crmp' 'crmp-bin')
source=(crmp.desktop
        application_crmp.png
        crmp.xml)
        
md5sums=('0a7c12db641281f2cf28ccd0c6033d9d' 
'ecacb295c361d6629d0dcf5d8cfd8ac7' 
'891fe1b901353d44eee16be050970194')

_svntrunk=http://crmp.googlecode.com/svn/trunk/
_svnmod=crmp

build() 
{

  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  
  #region BUILD CRMP
  cd $_svnmod/
  mkdir build
  cd build
  
  qmake ../crmp.pro -r -spec linux-g++
  make 
 
  mkdir -p $startdir/pkg/usr/bin
  cp crmp $startdir/pkg/usr/bin/
  #endregion
  
  #region make dsp_normalize
  cd $startdir/src/crmp/dsp/dsp_normalize
  mkdir build
  cd build
  qmake ../dsp_normalize.pro -r -spec linux-g++
  make
  
  mkdir -p $startdir/pkg/usr/share/crmp
  chmod -Xx libdsp_normalize.so.1.0.0
  cp libdsp_normalize.so.1.0.0 $startdir/pkg/usr/share/crmp/dsp_normalize.dsp
  #endregion
  
  #region make dsp_parameq
  cd $startdir/src/crmp/dsp/dsp_parameq
  mkdir build
  cd build
  qmake ../dsp_parameq.pro -r -spec linux-g++
  make
  
  mkdir -p $startdir/pkg/usr/share/crmp
  chmod -Xx libdsp_parameq.so.1.0.0
  cp libdsp_parameq.so.1.0.0 $startdir/pkg/usr/share/crmp/dsp_parameq.dsp
  #endregion
  
  cd $startdir/src/
  mkdir -p $startdir/pkg/usr/share/applications/
  cp crmp.desktop $startdir/pkg/usr/share/applications/
  mkdir -p $startdir/pkg/etc
  cp crmp.xml $startdir/pkg/etc/crmp.xml
  mkdir -p $startdir/pkg/usr/share/icons/crmp/
  cp application_crmp.png $startdir/pkg/usr/share/icons/crmp/application_crmp.png

}
