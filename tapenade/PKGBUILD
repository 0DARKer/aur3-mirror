# Maintainer:  Thomas Zervogiannis <tzervo@gmail.com>

pkgname=tapenade
pkgver=3.5
pkgrel=1
pkgdesc="A source transformation tool that provides a language independent framework for the development and use of AD (automatic differentiation) algorithms."
url="http://www.mcs.anl.gov/OpenAD/"
arch=('any')
license=('custom')
depends=('java-runtime')
source=(ftp://ftp-sop.inria.fr/tropics/tapenade/tapenade$pkgver.tar tapenade.sh)
md5sums=('a45684d38445812d81201c69ec9b134b' '3b289f7afffe169bfdb3681585c234f7')


build() {
	cd ${srcdir}
	tar -xvf ${pkgname}${pkgver}.tar
	rm -r ${srcdir}/tapenade3.5/bin/{sunos,windows}
	mkdir ${pkgdir}/opt
	mv ${srcdir}/${pkgname}${pkgver} ${pkgdir}/opt/
	install -Dm755 tapenade.sh ${pkgdir}/etc/profile.d/tapenade.sh
}
