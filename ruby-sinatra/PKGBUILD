# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>pkgname=ruby-rack110
pkgname=ruby-sinatra
_gemname=${pkgname#ruby-}
pkgver=1.2.6
pkgrel=1
pkgdesc="Classy web-development dressed in a DSL."
arch=('any')
url="http://www.sinatrarb.com"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-rack' 'ruby-tilt')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('15c89951749f866ddaa69b7eb1a108b6')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
