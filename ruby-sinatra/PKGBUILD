# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>pkgname=ruby-rack110
pkgname=ruby-sinatra
pkgver=1.2.2
pkgrel=1
pkgdesc="Classy web-development dressed in a DSL."
arch=(any)
url="http://www.sinatrarb.com/"
license=('MIT')
depends=('ruby' 'ruby-rack' 'ruby-tilt')
source=(http://gems.rubyforge.org/gems/sinatra-$pkgver.gem)
noextract=(sinatra-$pkgver.gem)
md5sums=('86e35dccc4d8de4b10e563b3e369b836')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" sinatra-$pkgver.gem
}
