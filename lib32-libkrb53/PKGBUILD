# Maintainer: p2k <Patrick.Schneider@uni-ulm.de>
pkgname=lib32-libkrb53
pkgver=1.8.1
pkgrel=1
pkgdesc="MIT Kerberos runtime libraries (32-bit libraries only)"
url="http://people.redhat.com/~dhowells/keyutils/"
license=('custom')
arch=('x86_64')
source=(http://arche.p2k-network.org/repo/i686/${pkgname/lib32-/}-${pkgver}-$pkgrel-i686.pkg.tar.xz)
depends=('lib32-db' 'lib32-e2fsprogs' 'lib32-glibc' 'lib32-keyutils')
md5sums=('518fd62c5aac0b7c4fc8d3b74505d30a')

build() {
  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
  install -Dm644 $srcdir/usr/share/licenses/libkrb53/LICENSE $pkgdir/opt/lib32/usr/share/licenses/libkrb53/LICENSE
}

