pkgname='perl-moosex-methodattributes'
pkgver='0.24'
pkgrel='1'
pkgdesc="code attribute introspection"
arch=('any')
url='http://search.cpan.org/dist/MooseX-MethodAttributes'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-moose>=0.98' 'perl-moosex-types>=0.21' 'perl-namespace-autoclean' 'perl-namespace-clean>=0.10' 'perl-test-exception')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/MooseX-MethodAttributes-0.24.tar.gz')
