)

source=(${_source_x86[@]})
md5sums=(${_md5sums_x86[@]})
[ "$CARCH" = "x86_64" ] && source=(${_source_x86_64[@]}) && md5sums=(${_md5sums_x86_64[@]})

build(){
cd ${srcdir}
for i in *.rpm
do rpmextract.sh $i
done

mkdir -p ${pkgdir}/usr/lib/${pkgname%%-${_lang}}
cp -R opt/openoffice.org{,3}/* ${pkgdir}/usr/lib/${pkgname%%-${_lang}}
}
