# Maintainer: stlarch  stlarchie@gmail.com

pkgname=termsyn
pkgver=1.3
pkgrel=3
pkgdesc="Monospaced font based on terminus and tamsyn with bold and versions with status icons."
arch=('any')
url="http://sourceforge.net/projects/termsyn"
license=('GPL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=termsyn.install
source=("http://sourceforge.net/projects/termsyn/files/$pkgname-$pkgver.tar.gz")

build () {
  cd "$srcdir/$pkgname-$pkgver"

  install -d "$pkgdir/usr/share/fonts/local"

  install -m644 * "$pkgdir/usr/share/fonts/local/"
}
md5sums=('c09c66e6992800a30444c8488ecb0da0')
