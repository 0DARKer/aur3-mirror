# Maintainer: Marcus Behrendt <marcus dot behrendt dot 86 [at] gmail dot com>
# Contributor: Pierrick BRUN <pierrick.brun gmail.com>
pkgname=libreoffice-faenza-mod
pkgver=0.4.0
pkgrel=1
pkgdesc="An icons pack for libreoffice inspired by Faenza icons"
arch=(any)
url="http://gnome-look.org/content/show.php/Faenza+Icons++for+LibreOffice++4.0.0?content=157970"
license=('GPL')
depends=('libreoffice-common>=4.2.0')
conflicts=('libreoffice-flat-icon-set')
install=${pkgname}.install
source=("images_faenza.zip::https://dl.dropboxusercontent.com/u/37200621/images_faenza_"${pkgver}".zip")
noextract=("images_faenza_"${pkgver}".zip")
md5sums=('ff693640c51420300fc07d37929f7210')

package() {
  LO_DIR=/usr/lib/libreoffice/share/config
  mkdir -p $pkgdir$LO_DIR
  install -m0644 images_faenza.zip ${pkgdir}${LO_DIR}
}
 
