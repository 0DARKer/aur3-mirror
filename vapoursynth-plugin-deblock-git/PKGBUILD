# Maintainer:  Gustavo Alvarez <sl1pkn07@gmail.com>

_plug=deblock
pkgname=vapoursynth-plugin-${_plug}-git
pkgver=r2.2.gcd8776a
pkgrel=1
pkgdesc="Plugin for Vapoursynth: ${_plug} (GIT version)"
arch=('i686' 'x86_64')
url="http://forum.doom9.org/showthread.php?t=170975"
license=('GPL')
depends=('vapoursynth')
makedepends=('git')
provides=("vapoursynth--plugin-${_plug}")
conflicts=("vapoursynth-plugin-${_plug}")

source=("${_plug}::git+https://github.com/HolyWu/VapourSynth-Deblock.git")
md5sums=('SKIP')
_gitname="${_plug}"

pkgver() {
  cd "${_gitname}"
  echo "$(git describe --long --tags | tr - .)"
}

build() {
  cd "${_gitname}/src"
  echo "all:
	  g++ -shared -march=native -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -std=c++11 -fPIC -o libvsdeblock.so Deblock.cpp $(pkg-config --cflags vapoursynth)" > Makefile
  make
}

package(){
  cd "${_gitname}/src"
  install -Dm755 "libvs${_plug}.so" "${pkgdir}/usr/lib/vapoursynth/libvs${_plug}.so"
  install -Dm644 ../README.md "${pkgdir}/usr/share/licenses/${pkgname}/README.txt"
}
