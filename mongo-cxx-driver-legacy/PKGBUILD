# Maintainer: monty <linksoft [at] gmx [dot] de>

_pkg=mongo-cxx-driver
_subpkg=legacy
pkgname=${_pkg}-${_subpkg}
pkgver=1.0.0_rc1
pkgrel=1
pkgdesc='Official MongoDB C++ driver (legacy).'
arch=('i686' 'x86_64')
url='http://www.mongodb.org'
license=(APACHE)
depends=('boost-libs' 'openssl' 'libsasl')
makedepends=('scons' 'boost' 'readline' 'ncurses')
source=("https://github.com/mongodb/${_pkg}/archive/${_subpkg}-${pkgver//_/-}.tar.gz")
conflicts=("mongodb<2.0.0")
options=("staticlibs")
provides=("mongo-cxx-driver")

package() {
  cd ${pkgname}-${pkgver//_/-}
  
  scons \
    --use-sasl-client \
    --ssl \
    --prefix="$pkgdir/usr" \
    --sharedclient \
    install
}

sha512sums=('37d8ac7fc0c934f1238338ff8926c3544511b727037d9ade47ee815d7ac94fb68032e55c068bcc951e6cbbd6acc13a4b29ac51d396b9e898c2bea7a8735d500a')
