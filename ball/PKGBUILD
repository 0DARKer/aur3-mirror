# Maintainer: Giuseppe Marco Randazzo <gmrandazzo@gmail.com>
pkgname=ball
_pkgname=BALL
pkgver=1.4.0
pkgrel=1
pkgdesc="BALL (Biochemical Algorithms Library) is an application framework in C++ that has been specifically designed for this purpose."
arch=("i686" "x86_64")
url="http://www.ball-project.org/"
license=('LGPL')
groups=()
depends=('bison' 'fftw' 'flex' 'gsl' 'glew' 'lpsolve' 'python2' 'qt' 'sip')
provides=()
source=(http://www.ball-project.org/Downloads/index_html/1.4.0/${_pkgname}-${pkgver}.tar.gz)

md5sums=('c09e2cd84fbf9bf30f50648d840e0190')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${_pkgdir} install
}
