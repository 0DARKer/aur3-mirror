# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=ncursesoflife
pkgver=1.2
pkgrel=1
epoch=
pkgdesc="Conway's Game of Life in Ncurses"
arch=('i386' 'x86_64')
url="https://github.com/AftExploision/NcursesOfLife"
license=('GPL')
groups=()
depends=("ncurses>=5.9")
makedepends=("git>=2")
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=NcursesOfLife.install
changelog=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

prepare() {
	mkdir "$srcdir/$pkgname-$pkgver" -p
	#patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

build() {
	cd "$srcdir/$pkgname-$pkgver"
	git clone "https://github.com/AftExploision/NcursesOfLife"	
	cd "$srcdir/$pkgname-$pkgver/NcursesOfLife"
	make
}

check() {
	cd "$srcdir/$pkgname-$pkgver"
	#make -k check
}

package() {
	cd "$srcdir/$pkgname-$pkgver/NcursesOfLife"
	make DESTDIR="$pkgdir/" install
}
