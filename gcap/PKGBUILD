# Maintainer: Nathan Owe <ndowens.aur at gmail dot com>  
pkgname=gcap
pkgver=0.0.5
pkgrel=1
pkgdesc="A commandline tool to retrieve YouTube captions"
arch=('i686' 'x86_64')
url="http://code.google.com/p/gcap/"
license=('GPL3')
depends=('perl' 'perl-xml-dom' 'perl-getopt-argvfile')
source=("http://gcap.googlecode.com/files/$pkgname-$pkgver.tar.gz")
md5sums=('4391f55765e59daa63211b55b2ee1eb3')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  perl Makefile.PL INSTALL_BASE=/usr 

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -d $pkgdir/usr/share/man/man1

  make \
    DESTDIR="$pkgdir/" INST_MAN1DIR=$pkgdir/usr/share/man1 \
    INST_MAN3DIR=$pkgdir/usr/share/man3  install

} 
# vim:set ts=2 sw=2 et:
