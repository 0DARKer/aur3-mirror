# Maintainer: Blaž Tomažič <blaz.tomazic@gmail.com>
pkgname=submarine
pkgver=0.1.0
_user=blazt
_commit=05cea48
pkgrel=1
pkgdesc="Submarine is a command-line application for searching and downloading the right subtitles for movies"
arch=('i686' 'x86_64')
url="http://github.com/blazt/submarine"
license=('LGPL')
depends=('glib2' 'libgee' 'libsoup')
makedepends=('git' 'vala')
source=("submarine-$pkgver.tar.gz::http://github.com/blazt/$pkgname/tarball/$pkgver")
md5sums=('35e382dc0e7bee8650c4008ae23d3020')

build() {
  cd "$srcdir/$_user-$pkgname-$_commit"

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_user-$pkgname-$_commit"

  make DESTDIR="$pkgdir/" install
}

