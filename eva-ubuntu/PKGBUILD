pkgname='eva-ubuntu'
pkgver='0.4.921+svn42_2ubuntu3'
pkgrel='3'
arch=('i686' 'x86_64')
url='http://sourceforge.net/projects/evaq'
license=('unknown')
pkgdesc='eva from ubuntu repo'
if [ "$CARCH" = "i686" ]; then
	depends=('kdelibs3' 'qt3' 'nas')
	source=('ftp://ftp.sjtu.edu.cn/ubuntu/pool/universe/e/eva/eva_0.4.921+svn42-2ubuntu3_i386.deb')
	md5sums=('90c2ecad881daeaacfffd775f58745b8')
elif [ "$CARCH" = "x86_64" ]; then
	depends=('kdelibs3' 'qt3' 'nas')
	source=('ftp://ftp.sjtu.edu.cn/ubuntu/pool/universe/e/eva/eva_0.4.921+svn42-2ubuntu3_amd64.deb')
	md5sums=('45948786727a7da5c1a2999335406ec6')
fi

install=$pkgname.install
build(){
	if [ "$CARCH" = "i686" ]; then
		ar x eva_0.4.921+svn42-2ubuntu3_i386.deb
	elif [ "$CARCH" = "x86_64" ]; then
		ar x eva_0.4.921+svn42-2ubuntu3_amd64.deb
	fi
	tar xf data.tar.gz -C ${pkgdir}
}
