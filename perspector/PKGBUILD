# Maintainer: Pierre Neidhardt <ambrevar@gmail.com>

pkgname=perspector
_pkgname=$pkgname
_arcdir=ambrevar-$_pkgname-3439b57eaf31
pkgver=1.1
pkgrel=1
pkgdesc="A control-point-based perspective rectification tool"
arch=('i686' 'x86_64')
url="http://ambrevar.bitbucket.org/$_pkgname"
license=('MIT')
depends=('gsl' 'gtk3')
source=(https://bitbucket.org/ambrevar/$_pkgname/get/v$pkgver.tar.bz2)
sha256sums=('6b96dd71eb381833327a1a4782f4605c56e43b9bef4dfb097f9e39951309060d')

build() {
    cd "$srcdir/$_arcdir"
    make
}

package() {
    cd "$srcdir/$_arcdir"
    make install DESTDIR="$pkgdir" prefix="/usr"
}

