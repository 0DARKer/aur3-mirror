# Maintainer: Sven-Hendrik Haase <sh@lutzhaase.com>

pkgname=sysprof-devel
pkgver=1.1.6
pkgrel=1
pkgdesc="A sampling CPU profiler that uses a Linux kernel module to profile the entire system"
arch=('i686' 'x86_64')
url="http://www.daimi.au.dk/~sandmann/sysprof/"
license=("GPL")
source=("http://www.daimi.au.dk/~sandmann/sysprof/sysprof-${pkgver}.tar.gz")
depends=("libglade" "udev" "kernel26>=2.6.31") 
provides=('sysprof')
conflicts=('sysprof')
md5sums=('219f888777771f3709cb35a64bb008a9')

build() {
  cd "$srcdir/sysprof-$pkgver"
  #_BFDVER=`ldconfig -p | grep bfd | perl -ne 'if(/libbfd-(\S+).so/){print $1;}'`
  #sed -i "s/-lbfd/-lbfd-${_BFDVER}/" configure
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
