# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname='xivo-client-git'
pkgver=20101209
pkgrel=1
pkgdesc="XiVO client"
arch=('i686' 'x86_64')
url='http://wiki.xivo.fr'
license=('GPL3')
depends=('qt')
makedepends=('git' 'upx')
provides=('xivo-client')
conflicts=()
source=(xivo-client)
md5sums=('ad53290a0740b49d04e6527329435b5a')
_gitroot="git://git.xivo.fr/xivo-gallifrey.git"
_gitname="xivo-gallifrey"

build() {
	msg "Connecting to the GIT server...."
	if [[ -d ${srcdir}/${_gitname} ]] ; then
		cd ${_gitname}
		git pull origin
		msg "The local files are updated..."
	else
		git clone ${_gitroot} --depth 1
	fi
	msg "GIT checkout done."
 
	cd ${srcdir}/${_gitname}/cticlients/
	make all-linux
}

package() {
	mkdir -p ${pkgdir}/opt/xivo-client/{plugins,lib}
	mkdir -p ${pkgdir}/usr/bin
	install -D -m 755 -o root -g root ${srcdir}/${_gitname}/cticlients/bin/xivoclient ${pkgdir}/opt/xivo-client/
	install -D -m 755 -o root -g root ${srcdir}/${_gitname}/cticlients/bin/libxivoclientbaselib.so.1.1.0 ${pkgdir}/opt/xivo-client/lib/
	install -D -m 755 -o root -g root ${srcdir}/${_gitname}/cticlients/bin/plugins/* ${pkgdir}/opt/xivo-client/plugins/
	cd ${pkgdir}/opt/xivo-client/lib/
	ln -s libxivoclientbaselib.so.1.1.0 libxivoclientbaselib.so.1.1
	ln -s libxivoclientbaselib.so.1.1.0 libxivoclientbaselib.so.1
	ln -s libxivoclientbaselib.so.1.1.0 libxivoclientbaselib.so
	install -D -m 755 -o root -g root ${srcdir}/xivo-client ${pkgdir}/usr/bin/
}
