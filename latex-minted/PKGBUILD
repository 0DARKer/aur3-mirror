# Maintainer: Jesse Young <jesse.young@gmail.com>
pkgname=latex-minted
_pkgname="${pkgname#latex-}"
pkgver=0.0
pkgrel=1
pkgdesc="Highlighted source code for LaTeX"
arch=('any')
url="http://minted.googlecode.com"
license=('custom:LPPL')
depends=('texlive-core' 'python-pygments')
install=(run-lsr.install)
source=("http://${_pkgname}.googlecode.com/files/${_pkgname}.zip"
    "http://www.latex-project.org/lppl/lppl-1-3c.txt")
md5sums=('6561bcbdc019d4c5732275810fafdda9'
         '9f4337828d782bdea41f03dd2ad1b808')

build() {
  make ${_pkgname}.sty
}

package() {
  installdir="${pkgdir}/usr/share/texmf-dest/tex/latex/${_pkgname}"
	install -Dm644 ${_pkgname}.sty "${installdir}/${_pkgname}.sty"
  install -Dm644 lppl-1-3c.txt "${pkgdir}/usr/share/licenses/${pkgname}/lppl-1-3c.txt"
  install -Dm644 README "${pkgdir}/usr/share/licenses/${pkgname}/README"
}

# vim:set ts=2 sw=2 et:
