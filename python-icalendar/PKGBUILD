pkgname=python-icalendar
pkgver=3.6.1
pkgrel=1
pkgdesc='A parser/generator of iCalendar files (RFC 2445)'
arch=('any')
url='http://pypi.python.org/pypi/icalendar/'
license=('GPL')
depends=('python' 'python-pytz')
makedepends=('python-distribute')
source=(http://pypi.python.org/packages/source/i/icalendar/icalendar-${pkgver}.tar.gz)
sha512sums=('16370fc25ecb23ea3cf4620170da17f8520a954d7c812abc37e38e65b7e657c1a019c0a8f00e3684b3ad367b9ae105215ffb830bf23ca276d7d9099a73ad9376')

package() {
  cd "icalendar-${pkgver}"
  python setup.py install --root=${pkgdir} --optimize=1
}

