# Contributor: Daniel Wuensch <tombhadAC@gmx.de>

pkgname=mist-icon-theme
pkgver=1.0.0
pkgrel=1
pkgdesc="Mist icon theme found in Fedora, which is a nicer version of the original: http://gnome-look.org/content/show.php/Mist?content=104258
Credits to Susan Kare and Dave Camp <campd@ximian.com>"
arch=('any')
url="http://fedoraproject.org/"
license=('GPL')
makedepends=('rpmextract')
source=(ftp://ftp.tu-chemnitz.de/pub/linux/fedora/linux/releases/15/Fedora/i386/os/Packages/gnome-themes-2.32.0-6.fc15.noarch.rpm)
md5sums=('8a08f61e30b5e9aded0091e8c1fa836c')

build() {
  cd "$srcdir"

  rpmextract.sh gnome-themes-2.32.0-6.fc15.noarch.rpm
  cp -r $srcdir/emesene-supported-plugins/* $startdir/pkg/usr/share/emesene/plugins
}
