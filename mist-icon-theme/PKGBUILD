# Contributor: Jeremy Newton (Mystro256)

pkgname=mist-icon-theme
pkgver=1.0.0
pkgrel=1
pkgdesc=Mist icon theme found in Fedora, which is a nicer version of the original: http://gnome-look.org/content/show.php/Mist?content=104258 Credits to Susan Kare and Dave Camp <campd@ximian.com>
arch=('any')
url="http://fedoraproject.org/"
license=('GPL')
makedepends=('rpmextract')
source=(ftp://ftp.tu-chemnitz.de/pub/linux/fedora/linux/releases/15/Fedora/i386/os/Packages/gnome-themes-2.32.0-6.fc15.noarch.rpm)
md5sums=('040dd2739c0ee4dbfc46bdbe262ca965')

build() {
  cd "$srcdir"

  rpmextract.sh gnome-themes-2.32.0-6.fc15.noarch.rpm
  mkdir -p $startdir/pkg/usr/share/icons/
  cp -p -r $srcdir/usr/share/icons/Mist $startdir/pkg/usr/share/icons/
}
