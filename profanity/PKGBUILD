# Maintainer: jason ryan <jasonwryan@gmail.com>

pkgname=profanity
pkgver=0.1.8
pkgrel=1
pkgdesc="A console based jabber client inspired by irssi"
arch=('any')
url="https://github.com/boothj5/profanity"
license=('GPL3')
depends=('libxml2' 'libnotify' 'curl' 'expat')
makedepends=('libstrophe-git')
checkdepends=('check')
source=("https://github.com/downloads/boothj5/profanity/${pkgname}-${pkgver}.tar.gz")
md5sums=('88e230fe3d385c0bf80447098c9ee477')

build() {
  cd "$srcdir/${pkgname}-${pkgver}"
  ./bootstrap.sh
  ./configure --prefix=/usr 
  make 
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
