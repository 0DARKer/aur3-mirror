#!/bin/sh
cd /opt/oilrush/
echo "fullscreen? Please enter 1 or 0. (1 = yes, 0 = no)"
read full

# Resolution...
width=1024
height=768
resolution=$(xrandr -q | grep '*' | grep -o "[0-9]*x[0-9]*")
if [ -n "$resolution" ]; then
        width=$(echo "$resolution" | cut -d'x' -f1)
        height=$(echo "$resolution" | cut -d'x' -f2)
fi

export LD_LIBRARY_PATH=./bin:$LD_LIBRARY_PATH
./bin/OilRush_x86d	-video_app opengl \
					-sound_app openal \
					-extern_plugin Network \
					-data_path ../ \
					-engine_config ../oilrush-0.6.cfg \
					-system_script waterwar/unigine.cpp \
					-console_command "world_load waterwar/waterwar" \
					-video_multisample 0 \
					-video_fullscreen $full \
					-video_mode -1 \
					-video_width $width \
					-video_height $height
