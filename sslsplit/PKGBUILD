pkgname=sslsplit
pkgver=0.4.5
pkgrel=2
pkgdesc="SSLsplit is a tool for man-in-the-middle attacks against SSL/TLS encrypted network connections."
url="http://www.roe.ch/SSLsplit"
arch=('i686' 'x86_64')
license=('BSD')
source=("http://mirror.roe.ch/rel/$pkgname/$pkgname-$pkgver.tar.bz2")
sha512sums=('c216805297e9207ad1689f9b5ee25c10c06c322d52fac584a18ee25829908e23c0ae6a4a4237e55dce5fd24300792301dd98a657b9e6d0fda6168c697362439c')
package() {
  cd $srcdir/$pkgname-$pkgver
  make PREFIX="$pkgdir/usr" install || return 1
}
