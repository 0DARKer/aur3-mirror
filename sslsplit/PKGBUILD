pkgname=sslsplit
pkgver=0.4.8
pkgrel=1
pkgdesc="SSLsplit is a tool for man-in-the-middle attacks against SSL/TLS encrypted network connections."
url="http://www.roe.ch/SSLsplit"
arch=('i686' 'x86_64')
license=('BSD')
source=("http://mirror.roe.ch/rel/$pkgname/$pkgname-$pkgver.tar.bz2")
sha512sums=('7fbf2ac33f2717aa5d9d21cd2efafe59c52478d2b03a6be312f1dce7f11a9195cc87c89e57173b663f87fe861624f3a2df1651d006538cd61a7068d44adb5ccb')
package() {
  cd $srcdir/$pkgname-$pkgver
  make PREFIX="$pkgdir/usr" install
}
