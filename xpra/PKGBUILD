# Maintainer: Florian Richter <mail@f1ori.de>
pkgname=xpra
pkgver=0.1.0.1
pkgrel=1
pkgdesc="screen for X"
arch=('x86_64' 'i686')
url="http://xpra.org/"
license=('GPL')
groups=()
depends=('python2' 'cython2')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
source=(http://xpra.org/src/xpra-0.1.0.1.tar.bz2)
md5sums=('dc5225cf7f3ba802abed24222df07f43')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  rm -rf build install
  python2 make_constants_pxi.py wimpiggy/lowlevel/constants.txt wimpiggy/lowlevel/constants.pxi
  CFLAGS=-O0 python2 setup.py install --root="$pkgdir/" --optimize=1
}

