# Maintainer: Anatolii Sakhnik <sakhnik@gmail.com>
pkgname=gpwsafe
pkgver=0.1.2
pkgrel=1
pkgdesc="A commandline program for managing encrypted password databases"
arch=('i686' 'x86_64')
url="https://github.com/sakhnik/gpwsafe"
license=('GPL')
depends=('libgcrypt' 'gtk3')
makedepends=('asciidoc' 'boost')
source=($url/downloads/gpwsafe-${pkgver}.tar.gz)
md5sums=('bf9797264e17ec1c046c15eb9586433f')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
