pkgrel='1'
pkgdesc="Method declarations with type constraints and no source filter"
arch=('any')
url='http://search.cpan.org/dist/MooseX-Method-Signatures'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-aliased' 'perl-b-hooks-endofscope>=0.07' 'perl-class-mop' 'perl-context-preserve' 'perl-devel-declare>=0.005011' 'perl-moose' 'perl-moosex-lazyrequire>=0.04' 'perl-moosex-meta-typeconstraint-forcecoercion' 'perl-moosex-types' 'perl-moosex-types-structured>=0.20' 'perl-namespace-autoclean' 'perl-namespace-clean' 'perl-parse-method-signatures' 'perl-sub-name' 'perl-task-weaken' 'perl-test-exception' 'perl-test-pod')


