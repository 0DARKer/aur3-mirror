# PKGBUILD by ArcherSeven
# Maintainer: ArcherSeven
# Editor by MoD
pkgname="gcw-gtk3"
pkgver=0.8.4
pkgrel=1
pkgdesc="Simple GTK text editor."
arch=('i686' 'x86_64')
url="http://pronou.net/code/gcw/"
license=('WTFPL')
depends=('gtksourceview3')
makedepends=('intltool')
conflicts=('gcw')
source=(${url}gcw-${pkgver}.tar.xz)
md5sums=('bd2b3311a6eec38fcbf0613bb4eb0f87')
#install=('gcw.install')
build() {
	mv gcw-${pkgver} gcw-gtk3-${pkgver}
	cd "${pkgname}-${pkgver}"

	./configure --prefix=/usr --with-gtk=3.0

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}
