# PKGBUILD by ArcherSeven
# Maintainer: ArcherSeven
# Editor by MoD
pkgname="gcw-gtk3"
pkgver=0.9.2
pkgrel=1
pkgdesc="Simple GTK text editor."
arch=('i686' 'x86_64')
url="http://pronou.net/code/gcw/"
license=('WTFPL')
depends=('gtksourceview3')
makedepends=('intltool')
conflicts=('gcw')
source=(${url}gcw-${pkgver}.tar.xz)
sha256sums=('2a8f993725b50ca43af4914e87ececc405c8d1bce3489f339ef2844ca8139419')
#install=('gcw.install')
build() {
	mv gcw-${pkgver} gcw-gtk3-${pkgver}
	cd "${pkgname}-${pkgver}"

	./configure --prefix=/usr --with-gtk=3.0

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}
