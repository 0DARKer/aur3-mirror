# PKGBUILD by ArcherSeven
# Maintainer: ArcherSeven
# Editor by MoD
pkgname="gcw-gtk3"
pkgver=0.8.0
pkgrel=3
pkgdesc="Simple GTK text editor."
arch=('i686' 'x86_64')
url="http://archerseven.com/pkg"
license=('WTFPL')
depends=('gtksourceview3')
makedepends=('intltool')
conflicts=('gcw')
source=(${url}/gcw-${pkgver}.tar.gz)
md5sums=('63959c1a82d98b94da36f3c6ce7c6c04')
#install=('gcw.install')
build() {
	mv gcw-${pkgver} gcw-gtk3-${pkgver}
	cd "${pkgname}-${pkgver}"

	./configure --prefix=/usr --with-gtk=3.0

	make
}

package() {
	cd "${pkgname}-${pkgver}"

	make DESTDIR="${pkgdir}" install
}
