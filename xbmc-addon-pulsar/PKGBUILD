# Maintainer: M0Rf30

pkgname=xbmc-addon-pulsar
pkgver=0.3.2
pkgrel=1
pkgdesc='Pulsar is an torrent finding and streaming engine for Kodi'
classname=plugin.video.pulsar
arch=('any')
url='https://github.com/steeve/plugin.video.pulsar'
license=('GPL3')
depends=('xbmc')
source=("https://github.com/steeve/plugin.video.pulsar/archive/v${pkgver}.zip")
install=xbmc-addon-pulsar.install

package() {
  mkdir -p ${pkgdir}/usr/share/xbmc/addons/
  cp -r ${srcdir}/${classname}-${pkgver}/ ${pkgdir}/usr/share/xbmc/addons/${classname}
  rm ${pkgdir}/usr/share/xbmc/addons/${classname}/Makefile
}

md5sums=('7136520f590d703d6a701b010061ed94')
