# Maintainer: Schnouki <thomas.jost@gmail.com>
pkgname=lua-iconv
pkgver=6
pkgrel=1
pkgdesc="Lua binding to the POSIX 'iconv' characters encoding conversion library"
arch=(i686 x86_64)
url="http://luaforge.net/projects/lua-iconv/"
license=('custom')
depends=('lua>=5.1')
source=(http://luaforge.net/frs/download.php/4181/${pkgname}-${pkgver}.tar.gz)
md5sums=('2cec334c5786d7c420a53003d6cb93d4')
sha1sums=('070f0dbb3b75c3f43b6efa81ed682fb4f58b914c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make LUAPKG="lua" DESTDIR="$pkgdir/" install || return 1

  install -Dm644 COPYING $pkgdir/usr/share/licenses/${pkgname}/COPYING
}
