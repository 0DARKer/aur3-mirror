# Maintainer: Aaron Mueller <mail@aaron-mueller.de>

pkgname=kmod-roccat
pkgver=0.8.2
pkgrel=1
pkgdesc="Kernel modules for ROCCAT devices"
arch=('i686' 'x86_64')
url="http://roccat.sourceforge.net"
license=('GPL')
makedepends=('linux-headers')
optdepends=('roccat-tools: graphical tools to adjust the mouse settings')
install=$pkgname.install
source=(http://downloads.sourceforge.net/project/roccat/linux/kmod-roccat/kmod-roccat-$pkgver.tar.bz2)
md5sums=('a50cddb5c72a7f4c12e20056a8869c30')

build() {
  cd "$srcdir/$pkgname-$pkgver/2.6.39_and_up"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/"
  install -D blacklist-roccat.conf $pkgdir/etc/modprobe.d/blacklist-roccat.conf

  cd "$srcdir/$pkgname-$pkgver/2.6.39_and_up"
  install -D isku.ko $pkgdir/lib/modules/$(uname -r)/extramodules/isku.ko
  install -D arvo.ko $pkgdir/lib/modules/$(uname -r)/extramodules/arvo.ko
  install -D kone.ko $pkgdir/lib/modules/$(uname -r)/extramodules/kone.ko
  install -D koneplus.ko $pkgdir/lib/modules/$(uname -r)/extramodules/koneplus.ko
  install -D kovaplus.ko $pkgdir/lib/modules/$(uname -r)/extramodules/kovaplus.ko
  install -D lua.ko $pkgdir/lib/modules/$(uname -r)/extramodules/lua.ko
  install -D pyra.ko $pkgdir/lib/modules/$(uname -r)/extramodules/pyra.ko
  install -D savu.ko $pkgdir/lib/modules/$(uname -r)/extramodules/savu.ko
  install -D roccat-common.ko $pkgdir/lib/modules/$(uname -r)/extramodules/roccat-common.ko
  install -D roccat.ko $pkgdir/lib/modules/$(uname -r)/extramodules/roccat.ko
}

