# Maintainer: Aaron Mueller <mail@aaron-mueller.de>

pkgname=kmod-roccat
pkgver=0.9.0
pkgrel=1
pkgdesc="Kernel modules for ROCCAT devices"
arch=('i686' 'x86_64')
url="http://roccat.sourceforge.net"
license=('GPL')
makedepends=('linux-headers')
conflicts=('roccat-dkms')
optdepends=('roccat-tools: graphical tools to adjust the mouse settings')
install=$pkgname.install
source=(http://downloads.sourceforge.net/project/roccat/linux/kmod-roccat/kmod-roccat-$pkgver.tar.bz2)
md5sums=('08b607d4de42cb38f2734e4dd589afaa')

build() {
  cd "$srcdir/$pkgname-$pkgver/2.6.39_and_up"
  make modules
}

package() {
  cd "$srcdir/$pkgname-$pkgver/"
  install -D override-roccat.conf $pkgdir/usr/lib/depmod.d/override-roccat.conf

  cd "$srcdir/$pkgname-$pkgver/2.6.39_and_up"
  install -D hid-roccat.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat.ko
  install -D hid-roccat-common.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-common.ko
  install -D hid-roccat-arvo.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-arvo.ko
  install -D hid-roccat-isku.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-isku.ko
  install -D hid-roccat-kone.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-kone.ko
  install -D hid-roccat-koneplus.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-koneplus.ko
  install -D hid-roccat-konepure.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-konepure.ko
  install -D hid-roccat-kovaplus.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-kovaplus.ko
  install -D hid-roccat-lua.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-lua.ko
  install -D hid-roccat-pyra.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-pyra.ko
  install -D hid-roccat-savu.ko $pkgdir/lib/modules/$(uname -r)/extramodules/hid-roccat-savu.ko
}

