# Contributor: Peter Feuerer <peter[at]piie.net>
# Contributor: Andrej Gelenberg <andrej.gelenberg@udo.edu>
pkgname="cone"
pkgver=0.86
pkgrel=1
pkgdesc="A text-based mail client based, in part, on Courier libraries."
arch=('i686' 'x86_64')
url="http://www.courier-mta.org/cone/index.html"
license=('GPL2')
depends=('courier-authlib' 'courier-sox' 'libxml2' 'openssl' 'aspell' 'libldap' 'fam')
source=("http://downloads.sourceforge.net/courier/${pkgname}-${pkgver}.tar.bz2")

md5sums=('adca3a228526361e9ef4eb4dcd273306')
sha512sums=('f403860adf207d74d415105898e3c467d58f172c16f623347ae3bf78ef41bb9d3ac127da84f45897999cfcd43ba23c0bf642b3b10d9f157baf1b86ab4255ff2f')

build() {
	cd ${startdir}/src/${pkgname}-${pkgver}
	./configure --prefix=/usr --sysconfdir=/etc --with-socksgt
	make || return 1
	make DESTDIR=${startdir}/pkg install
}

