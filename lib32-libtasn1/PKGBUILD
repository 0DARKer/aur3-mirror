# Contributor: Jan de Groot <jgc@archlinux.org>
# Contributor: judd <jvinet@zeroflux.org>

pkgname=lib32-libtasn1
_pkgname=libtasn1
pkgver=2.8
pkgrel=1
pkgdesc="The ASN.1 library used in GNUTLS"
arch=(i686 x86_64)
license=('GPL3' 'LGPL')
url="http://www.gnu.org/software/libtasn1/"
depends=('lib32-glibc')
makedepends=('gcc-multilib')
options=('!libtool')
source=(ftp://ftp.gnu.org/gnu/libtasn1/${_pkgname}-${pkgver}.tar.gz)
md5sums=('53fd164f8670e55a9964666990fb358f')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  CC='gcc -m32' ./configure --prefix=/usr \
      --with-packager=Archlinux \
      --with-packager-bug-reports="http://bugs.archlinux.org/" \
      --with-packager-version=${pkgver}-${pkgrel} \
      --libdir=/usr/lib32 --libexecdir=/usr/lib32 \
      --disable-static 
      
  make
  make DESTDIR="${pkgdir}" install
  make check
  rm -r "${pkgdir}/usr/bin" "${pkgdir}/usr/include" "${pkgdir}/usr/share"
}
