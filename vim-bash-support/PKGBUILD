# Maintainer: 3ED <krzysztof1987 _at_ gmail _dot_ com>

pkgname=vim-bash-support
pkgver=3.4
_srcid=14460
pkgrel=1
pkgdesc='BASH-IDE - Write and run BASH-scripts using menus and hotkeys. '
arch=('i686' 'x86_64')
url='http://vim.sourceforge.net/scripts/script.php?script_id=365'
license=('custom:vim')
depends=('vim')
optdepends=('bashdb: bash debugger')
install='vimdoc.install'
source=("http://www.vim.org/scripts/download_script.php?src_id=$_srcid")
sha256sums=('d60ba78dd3c94baf4f86121484ef657319a10d7f5ba931acb2169b0657fccd1d')

build() {
    cd "$srcdir"

    # bash-vim-support plugin files:
    install -dm755 "$pkgdir/usr/share/vim/vimfiles/"
    cp -a "$srcdir/"{bash-support,doc,plugin,ftplugin} \
        "$pkgdir/usr/share/vim/vimfiles/"

    # fix rights:)
    chmod -R a-wx,u+w,a+rX "$pkgdir/"
}
