pkgname=pacfind-git
pkgdesc="An enhanced packages search tool for pacman"
pkgver=20120908
pkgrel=1
url="https://bitbucket.org/andrewgregory/pacfind"
license=('MIT')
arch=('i686' 'x86_64')
makedepends=('git')
depends=('pacman')

#source=(git://https://andrewgregory@bitbucket.org/andrewgregory/pacfind.git) 
#pkgver() {
    #cd $pkgname
    #git log --oneline | wc -l
#}

_gitroot="https://andrewgregory@bitbucket.org/andrewgregory/pacfind.git"
_gitname="pacfind"

build() {
    cd $srcdir

    msg "Connecting to git.freedesktop.org GIT server...."

    if [ -d $startdir/src/$_gitname ] ; then
        cd $_gitname
        git pull origin
        msg "The local files are updated."
    else
        git clone $_gitroot
        cd $_gitname
    fi

    msg "GIT checkout done or server timeout"

    make
}

package() {
    cd $srcdir/$_gitname
    make DESTDIR=$pkgdir install
}
