# Maintainer: Jesse Spangenberger <azulephoenix@gmail.com>
pkgname=pdfstudio8
pkgver=8.3.2
pkgrel=2
pkgdesc="Review, annotate, and edit PDF Documents"
arch=('x86_64')
url="http://www.qoppa.com/pdfstudio/"
license=('Commerical')
conflicts=('')
provides=('pdfstudio8')
optdepends=('java-runtime: remove /opt/pdfstudio8/jre to use other jre')
install="$pkgname.install"
source=(http://www.qoppa.com/files/pdfstudio/demo/downloads/version8/PDFStudio_v8_3_2_linux64.deb
		$pkgname.desktop
		$pkgname.install
		$pkgname.png
		)
md5sums=('ef292541f33b2d70032b74d93ef17466'
         '2dacd522ed1e7fff033fd4b2a96ae6a6'
         'f7e1e2722c972f3420cfd69492c79073'
         '2137396675c81eb46295963c8eb3adac')

package() {
    cd "$srcdir"
    ar x PDFStudio_v8_3_2_linux64.deb
    tar xzf data.tar.gz -C "$pkgdir/"
    
    install -Dm644 "$srcdir/$pkgname.desktop" \
	"$pkgdir/usr/share/applications/$pkgname.desktop"
    install -Dm644 "$srcdir/$pkgname.png" \
	"$pkgdir/usr/share/pixmaps/$pkgname.png"
    
    cd "$pkgdir"
    mkdir -p usr/bin
    ln -s /opt/pdfstudio8/pdfstudio8 $pkgdir/usr/bin/pdfstudio8
 }
