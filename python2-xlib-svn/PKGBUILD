pkgname=python2-xlib-svn
_pkgname=python2-xlib
pkgver=162
pkgrel=1
pkgdesc="Python2 xlib library."
arch=("any")
url="http://python-xlib.sourceforge.net/"
license=('GPL')
depends=('python2' 'libx11')
makedepends=('python2' 'subversion')
provides=('python2-xlib')
conflicts=('python2-xlib')
source=("$_pkgname::svn+https://python-xlib.svn.sourceforge.net/svnroot/python-xlib/trunk")
sha256sums=('SKIP')

pkgver() {
  cd $_pkgname
  svnversion | tr -d [A-z]
}

package() {
	cd $_pkgname
  python2 setup.py install --root=$pkgdir --prefix=/usr
}
