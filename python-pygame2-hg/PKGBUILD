# Mantainer: Franco Tortoriello <franco.tortoriello @t gmail d0t com>

pkgname=python-pygame2-hg
pkgver=23
pkgrel=2
pkgdesc="Pygame Reloaded, a Python game library"
arch=(any)
url="http://code.google.com/p/pgreloaded/"
license=('LGPL')
depends=('python' 'sdl_mixer' 'sdl_ttf' 'sdl_image' 'sdl_gfx' 'portmidi')
makedepends=('mercurial')
conflicts=('pygame2-py3')
provides=('pygame2-py3')

_hgroot=https://pgreloaded.googlecode.com/hg/
_hgrepo=pgreloaded

build() {
  cd ${srcdir}
  rm -Rf ${_hgrepo}-build
  cp -R ${_hgrepo} ${_hgrepo}-build
  cd ${_hgrepo}-build
  python setup.py install --root=${pkgdir} --prefix=/usr
  rm -Rf ${pkgdir}/usr/lib/python3.1/site-packages/*.egg-info
  cp -R doc "${pkgdir}/usr/lib/python3.1/site-packages/pygame2"
}
