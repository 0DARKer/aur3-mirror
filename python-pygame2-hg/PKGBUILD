pkgname=python-pygame2-hg
pkgver=25
pkgrel=1
pkgdesc="Pygame Reloaded, a Python game library"
arch=(any)
url="http://code.google.com/p/pgreloaded/"
license=('LGPL')
depends=('python' 'sdl_mixer' 'sdl_ttf' 'sdl_image' 'sdl_gfx' 'portmidi')
makedepends=('mercurial')
conflicts=('pygame2-py3')
provides=('pygame2-py3')

_hgroot=https://pgreloaded.googlecode.com/hg/
_hgrepo=pgreloaded

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [[ -d "$_hgrepo" ]]; then
    cd "$_hgrepo"
    hg pull -u
    msg "The local files are updated."
  else
    hg clone "$_hgroot" "$_hgrepo"
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  python setup.py build
}

package() {
  cd "$srcdir/$_hgrepo-build"

  python setup.py install --root="$pkgdir"
  cp -R doc "$pkgdir/usr/lib/python3.2/site-packages/pygame2"
}
