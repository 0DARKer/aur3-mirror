# Contributor: Javier 'Phrodo_00' Aravena <phrodo.00@gmail.com>

pkgname=zsh-yaourt
pkgver=0.2.3
pkgrel=2
pkgdesc="ZSH support for tab-completing repo package names in yaourt"
_nick='Phrodo_00'
_changeset='f22ce54637f2'
url="http://bitbucket.org/${_nick}/${pkgname}"
depends=('zsh' 'yaourt')
source=("https://bitbucket.org/${_nick}/${pkgname}/get/${_changeset}.tar.bz2")
arch=('any')
license=('GPL')
md5sums=('b6b96ff41db03299f1746e07ed660040')

build() {
    cd ${srcdir}/${_nick}-${pkgname}-${_changeset}
    mkdir -p ${pkgdir}/usr/share/zsh/site-functions/
    install -m644 _yaourt ${pkgdir}/usr/share/zsh/site-functions/_yaourt
}
