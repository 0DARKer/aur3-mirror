pkgname=etherwake
pkgver=1.09
pkgrel=4
arch=(i686 x86_64)
pkgdesc="Utility for waking up computers via wake-on-lan (wol)"
license="GPL"
url="http://www.scyld.com/wakeonlan.html"
source=(http://diablo150.org/divers/etherwake/ether-wake.c)
md5sums=('406b851f7a1260b760a65c0450549eee')
conflicts=()
replaces=()
backup=()
makedepends=('bash' 'mawk')

build() {
	cd $startdir
	gcc src/ether-wake.c -o etherwake
	install etherwake -D pkg/usr/bin/etherwake
}

