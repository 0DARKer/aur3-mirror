# Maintainer: crazyelf5

pkgname=gtk-theme-malys-universal
pkgver=1.0
pkgrel=1
pkgdesc="GTK2/GTK3 Malys Universal Theme"
arch=('any')
url=('http://malys777.deviantart.com/art/malys-universal-newly-redesigned-274584100')
license=('GPL3')
depends=('gtk-engine-unico')
optdepends=('gtk-engine-murrine: GTK2 support')
source=(http://www.deviantart.com/download/274584100/malys___universal__________newly_redesigned_by_malys777-d4jhag4.zip)
md5sums=('5d8c5cb98dfc8fd7d4b873156a00dac6')

build () {
  install -dm755 "$pkgdir/usr/share/themes"
  cd malys-theme*
  tar -xf malys-universal.tar.bz2 -C "$pkgdir/usr/share/themes"
  rm -rf "$pkgdir/usr/share/themes/malys-universal/backgrounds"
}
