# Maintainer: crazyelf5

pkgname=gtk-theme-malys-universal
pkgver=3.02
pkgrel=1
pkgdesc="GTK2/GTK3 Malys Universal Theme"
arch=('any')
url=('http://malys777.deviantart.com/art/malys-universal-3-01-274584100')
license=('GPL3')
depends=('gtk-engine-unico')
optdepends=('gtk-engine-murrine: GTK2 support')
source=(http://www.deviantart.com/download/274584100/malys___universal__3_01_by_malys777-d4jhag4.zip)
md5sums=('9f7adb87929b1c473e58c3260b981f3f')

package () {
  tar -xf malys-theme\ GTK3-universal/malys-universal\(right\).tar.gz
  cd malys-universal\(right\)
  find . -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/malys-universal/{}" \;
  rm -rf "$pkgdir/usr/share/themes/malys-universal/backgrounds"
}
