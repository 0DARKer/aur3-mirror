pkgname=binutils-arm-linux-gnueabihf-bin
pkgver=2.22.90.20120919
pkgrel=1
pkgdesc="GNU binary utilities, for arm-linux-gnueabihf target"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/binutils-arm-linux-gnueabihf"
license=('GPL2')
provides=('binutils-arm-linux-gnueabihf')
conflicts=('binutils-arm-linux-gnueabihf')
if [ "$CARCH" = "i686" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/b/binutils-armhf-cross/binutils-arm-linux-gnueabihf_2.22.90.20120919-0ubuntu1cross1.86_i386.deb")
    md5sums=('86234c89d431fc9a3bcb5d52edffb10c')
elif [ "$CARCH" = "x86_64" ]; then
    source=("http://archive.ubuntu.com/ubuntu/pool/universe/b/binutils-armhf-cross/binutils-arm-linux-gnueabihf_2.22.90.20120919-0ubuntu1cross1.86_amd64.deb")
    md5sums=('6b1c36a5ebe2c420e69c9c0dd9b5f530')
fi

package() {
    cd $pkgdir
    tar xf $srcdir/data.tar.gz
}
