#Contributor: Dan Serban (dserban01 => gmail)

pkgname=draftsight
pkgver=beta1
pkgrel=2
pkgdesc="With DraftSight (2D AutoCAD work-alike), you can easily create professional CAD drawings"
arch=(i686)
url="http://www.3ds.com/products/draftsight/download-draftsight/"
license=('Commercial')
depends=(fontconfig gcc-libs glib2 glibc libcups libgl libice libsm libx11 libxext libxrender libxt mesa nas util-linux zlib)
source=('http://dl-ak.solidworks.com/nonsecure/draftsight/beta1/DraftSight.deb')
md5sums=('b184eeb11f4c17d73cb1292accd3033a')
install=draftsight.install

build()
{
  msg "Extracting ..."
  ar -xv DraftSight.deb || return 1
  tar -xvf data.tar.gz || return 1
  msg2 "Done extracting."
  msg "Moving files ..."
  cd $srcdir
  mv opt $pkgdir/
  cd $pkgdir/opt/dassault-systemes/draftsight/Eula/english
  install -D eula.htm $pkgdir/usr/share/licenses/draftsight/EULA.html
  msg2 "Done moving files."
}
