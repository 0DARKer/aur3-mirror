pkgname=draftsight
pkgver=V1R2.0
pkgrel=2
pkgdesc="Free CAD software for your DWG files."
arch=(i686 x86_64)
url="http://www.3ds.com/products/draftsight/download-draftsight/"
source=(draftsight-$pkgver.rpm::http://dl-ak.solidworks.com/nonsecure/draftsight/$pkgver/draftSight.rpm)
license=(Commercial)
install=draftsight.install

_pkgprefix=opt/dassault-systemes/draftsight

depends=(
    fontconfig
    gcc-libs
    glib2
    glibc
    libcups
    libgl
    libice
    libsm
    libx11
    libxext
    libxrender
    libxt
    mesa
    nas
    util-linux
    zlib
)

# Build and replace dependency list for x86_64
if [[ "$CARCH" == 'x86_64' ]]; then
    for i in ${depends[@]}
    do
        _depends_64+=("lib32-$i")
    done
    depends=("${_depends_64[@]}")
fi

package() {
    # Perhaps it should be a copy instead, but this is fast on the
    # same filesystem.
    mv opt "${pkgdir}"/

    mkdir -p "${pkgdir}"/etc/profile.d
    echo "export PATH=\$PATH:/${_pkgprefix}/bin" > $pkgdir/etc/profile.d/$pkgname.sh
    chmod 755 "${pkgdir}"/etc/profile.d/$pkgname.sh

    # Some of these are incompatible with system libraries of the same soname,
    # which will cause problems with applications that depend on them.
    #mkdir -p "${pkgdir}"/etc/ld.so.conf.d
    #echo /${_pkgprefix}/lib > $pkgdir/etc/ld.so.conf.d/$pkgname.conf

    # ln -s"${pkgdir}"/opt/dassault-systemes/draftsight/Eula "${pkgdir}"/usr/share/licenses/draftsight
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/Eula/english/eula.htm "${pkgdir}"/usr/share/licenses/draftsight/eula.htm
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/128x128/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/128x128/apps/dassault-systemes_draftsight.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/64x64/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/64x64/apps/dassault-systemes_draftsight.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/48x48/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/48x48/apps/dassault-systemes_draftsight.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/32x32/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/32x32/apps/dassault-systemes_draftsight.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/16x16/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/16x16/apps/dassault-systemes_draftsight.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/128x128/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/128x128/mimetypes/dassault-systemes_draftsight-dwg.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/64x64/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/64x64/mimetypes/dassault-systemes_draftsight-dwg.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/48x48/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/48x48/mimetypes/dassault-systemes_draftsight-dwg.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/32x32/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/32x32/mimetypes/dassault-systemes_draftsight-dwg.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/16x16/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/16x16/mimetypes/dassault-systemes_draftsight-dwg.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/128x128/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/128x128/mimetypes/dassault-systemes_draftsight-dxf.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/64x64/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/64x64/mimetypes/dassault-systemes_draftsight-dxf.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/48x48/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/48x48/mimetypes/dassault-systemes_draftsight-dxf.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/32x32/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/32x32/mimetypes/dassault-systemes_draftsight-dxf.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/16x16/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/16x16/mimetypes/dassault-systemes_draftsight-dxf.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/128x128/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/128x128/mimetypes/dassault-systemes_draftsight-dwt.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/64x64/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/64x64/mimetypes/dassault-systemes_draftsight-dwt.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/48x48/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/48x48/mimetypes/dassault-systemes_draftsight-dwt.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/32x32/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/32x32/mimetypes/dassault-systemes_draftsight-dwt.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/pixmaps/16x16/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/16x16/mimetypes/dassault-systemes_draftsight-dwt.png
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/dassault-systemes_draftsight-dwg.xml "${pkgdir}"/usr/share/mime/application/dassault-systemes_draftsight-dwg.xml
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/dassault-systemes_draftsight-dxf.xml "${pkgdir}"/usr/share/mime/application/dassault-systemes_draftsight-dxf.xml
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/dassault-systemes_draftsight-dwt.xml "${pkgdir}"/usr/share/mime/application/dassault-systemes_draftsight-dwt.xml
    install -D "${pkgdir}"/opt/dassault-systemes/draftsight/mime/dassault-systemes_draftsight.desktop "${pkgdir}"/usr/share/applications/dassault-systemes_draftsight.desktop
}



md5sums=('ebb0a3533cf97efabcfada088b9c48ce')
