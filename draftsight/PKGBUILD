#Contributor: Dan Serban (dserban01 => gmail)

pkgname=draftsight
pkgver=beta1
pkgrel=1
pkgdesc="With DraftSight, you can easily create professional CAD drawings"
arch=(i686)
url="http://www.3ds.com/products/draftsight/download-draftsight/"
license=('Commercial')
depends=(dbus expat gcc libgcrypt glib2 libgpg-error pcre zlib glibc libgl libice libsm libx11 libxau libxdamage libxdmcp libxext libxfixes libxrender libxt libxxf86vm avahi libcups libdrm fontconfig gnutls libtasn1 libxcb)
source=('http://dl-ak.solidworks.com/nonsecure/draftsight/beta1/DraftSight.deb')
md5sums=('b184eeb11f4c17d73cb1292accd3033a')
install=draftsight.install

build()
{
  msg "Extracting ..."
  ar -xv DraftSight.deb || return 1
  tar -xvf control.tar.gz || return 1
  tar -xvf data.tar.gz || return 1
  msg2 "Done extracting."
  msg "Moving files ..."
  cd $srcdir
  mv opt var $pkgdir/
  install -D license.en.txt $pkgdir/usr/share/licenses/draftsight/LICENSE
  msg2 "Done moving files."
}
