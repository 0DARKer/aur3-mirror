# Maintainer: Nicol√°s de la Torre <ndelatorre@gmail.com>
pkgname=python-ropevim
pkgver=0.3
pkgrel=1
pkgdesc="Plugin for performing python refactorings in vim"
arch=('any')
url="http://rope.sourceforge.net/ropevim.html"
license=('GPL')
depends=('python-ropemode')
replaces=('ropevim')
conflicts=('ropevim')
source=(http://pypi.python.org/packages/source/r/ropevim/ropevim-$pkgver-rc.tar.gz)
md5sums=('1564956791a1f2e8b895c5b312294549')

build() {
  cd $srcdir/ropevim-$pkgver-rc
  python2 ./setup.py install --root=$pkgdir/ --prefix=/usr --optimize=1
  install -m 444 -D ropevim.vim $pkgdir/usr/share/vim/vimfiles/plugin/ropevim.vim
  rm $pkgdir/usr/ropevim.vim
}

