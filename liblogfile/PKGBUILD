pkgname=liblogfile
pkgver=3.0.1
pkgrel=1.2
pkgdesc="A C library providing a basic logging function"
arch=('i686' 'x86_64')
url="http://www.wolf-software.com/Libraries/logfile"
license=('GPL3')
depends=('glibc')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('4f6c5d55586e71422945a7e633039ddc')

build() {
  cd $pkgname-$pkgver

  sed 's|-Werror||g' -i configure

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
