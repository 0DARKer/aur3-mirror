pkgname=liblogfile
pkgver=3.0.0
pkgrel=1
pkgdesc="A C library providing a basic logging function"
arch=('i686' 'x86_64')
url="http://www.wolf-software.net/Libraries/logfile/"
license=('GPL3')
depends=('glibc')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('627151fcd61d8bd33463a3fb88437bf6')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
