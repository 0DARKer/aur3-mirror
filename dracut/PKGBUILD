# Maintainer: Jon Nordby <jononor@gmail.com>

pkgname=dracut
pkgver=024
pkgrel=1
pkgdesc="Generic, modular, cross-distribution initramfs generation tool"
arch=('i686' 'x86_64')
url="https://dracut.wiki.kernel.org/"
license=('GPL')
depends=('cpio' 'dash' 'kbd' 'kmod' 'util-linux' )
optdepends=('cryptsetup' 'dmraid' 'lvm2' 'mdadm')
makedepends=('docbook-xsl' 'asciidoc')
backup=('etc/dracut.conf')
source=(http://www.kernel.org/pub/linux/utils/boot/dracut/$pkgname-$pkgver.tar.xz)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make sysconfdir=/etc prefix=/usr
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="${pkgdir}" sysconfdir=/etc prefix=/usr install
} 

md5sums=('253080492f6f0168be24a60758fa6b31')
