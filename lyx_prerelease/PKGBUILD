# Maintainer: Sam Madhani <shemz -at- gmx -dot- com>

# Package 'texlive-latexextra' provides some new features supported by this version. 
# I had to install this package for multirow functionality.

pkgname=lyx_prerelease
pkgver=2.0.0
pkgrel=beta4
_pkgrel=beta4
pkgdesc="A document processor with Tex/Latex backend."
arch=(i686 x86_64)
url='http://www.lyx.org'
license=('GPL')

depends=('qt' 'texlive-core' 'python2' 'perl' 'libmythes' 'imagemagick' 'aspell' 'boost' 'texlive-latex3')
optdepends=('texlive-latexextra: for newer functionalities implemented in Lyx v2')
makedepend=('unzip')
provides=('lyx')
conflicts=('lyx' 'lyx-svn')
replaces=('lyx' 'lyx-svn')

source=(ftp://ftp.lyx.org/pub/lyx/devel/lyx-2.0/${_pkgrel}/lyx-${pkgver}${_pkgrel}.tar.xz
	lyx.desktop)
md5sums=('a1de9673bb1b19084d2dafbf70e2711b'
	 'b2a093f9dbbdeaa3dc085113c0f187c2')

install=lyx.install

build() {
  cd ${srcdir}/lyx-${pkgver}${_pkgrel}

  find . -type f -exec sed -i 's|#!.*python|#!/usr/bin/env python2|' {} +
  sed -i 's|"python|"python2|' lib/configure.py src/support/os.cpp
  
  ./configure PYTHON=/usr/bin/python2 --prefix=/usr \
    --with-frontend=qt4 --enable-build-type=pre \
    --enable-warnings --without-included-boost

  make || return 1
}

package() {
  cd ${srcdir}/lyx-${pkgver}${_pkgrel} 
  
  make DESTDIR=${pkgdir} install-strip || return 1

  # desktop entry
  install -Dm 644 ${srcdir}/lyx.desktop \
	${pkgdir}/usr/share/applications/lyx.desktop || return 1
}