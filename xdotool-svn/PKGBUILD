# Maintainer: Andreas B. Wagner <AndreasBWagner@gmail.com>
pkgname=xdotool-svn
pkgver=3201
pkgrel=2
pkgdesc="Command-line X11 automation tool"
arch=('i686' 'x86_64')
url="http://www.semicomplete.com/projects/xdotool/"
license=('BSD')
depends=('libxtst')
makedepends=('subversion')
provides=('xdotool')
conflicts=('xdotool')

_svntrunk=http://semicomplete.googlecode.com/svn/xdotool
_svnmod=semicomplete-read-only/xdotool

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  make
  make PREFIX="$pkgdir/usr" INSTALLMAN="$pkgdir/usr/share/man" install

  # License
  install -Dm644 COPYRIGHT "$pkgdir/usr/share/licenses/xdotool/COPYRIGHT"
}
md5sums=()
