# Maintainer: Arthur Darcet <arthur.darcet@m4x.org>

pkgname=kaoz-clients-git
pkgver=20130205
pkgrel=5
pkgdesc="Client scripts for kaoz (IRC notifier in python by Binet RÃ©seau)"
arch=('any')
url="https://github.com/BinetReseau/Kaoz.git"
license=('MIT')
depends=('socat')
makedepends=('git')
optdepends=('kaoz-git: Need to be installed somewhere in your network')
install='kaoz-clients.install'

_gitroot=${url}
_gitname=${pkgname}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi
}

package() {
  mkdir -p "${pkgdir}/usr/share"
  cp -r "${srcdir}/$_gitname/clients" "${pkgdir}/usr/share/kaoz-client"
  chmod o= "${pkgdir}/usr/share/kaoz-client" -R
}
