pkgname=lxinput-qt-git
_gitname=lxinput-qt
pkgver=c082f73
pkgrel=1
pkgdesc="Qt port of LXInput"
arch=('i686' 'x86_64')
url="http://lxde.git.sourceforge.net"
license=('GPL')
depends=('qt4')
makedepends=('cmake' 'git')
source=(lxinput-qt::git://lxde.git.sourceforge.net/gitroot/lxde/lxinput-qt)
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd ${srcdir}/${_gitname}
  cmake . -DCMAKE_BUILD_TYPE=Release \
          -DCMAKE_INSTALL_PREFIX=/usr \
          -DQT_QMAKE_EXECUTABLE=qmake4
  make
}

package() {
  cd ${srcdir}/${_gitname}
  make DESTDIR=${pkgdir} install
}
