pkgname=jig
pkgver=1.05
pkgrel=2
pkgdesc="console based jabber client"
arch=('i686' 'x86_64')
url="http://jig.isawsome.net/"
license=('GPL')
source=(http://jig.isawsome.net/jig-1.05.tar.gz jig.patch)
depends=('xmpppy' 'python-dnspython')
install=jig.install
md5sums=('a67aa03c519dc678d0e6660d020e4543' '68e88eba8f57a5ebfabfaa133539ffd8')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p0 < ../jig.patch || return 1
  mkdir -p $pkgdir/usr/bin || return 1
  cp jig.py $pkgdir/usr/bin/ || return 1
}

# vim:set ts=2 sw=2 et:
