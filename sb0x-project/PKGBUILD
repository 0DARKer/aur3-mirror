#Maintainer: Levi Nachamni (levi0x0)
pkgname=sb0x-project
pkgver=2.0.1rc2
pkgrel=1
pkgdesc="A simple and Lightweight framework for Penetration testing"
arch=('any')
url="https://github.com/levi0x0/sb0x-project"
license=('GPL 3')
depends=('python2')
optdepends=('ettercap: For the PhishWeeMan Module')
source=('https://github.com/levi0x0/sb0x-project/archive/2.0.1rc2.tar.gz'
	'sb0x_build.patch')
md5sums=('24a4f6bbeff6fd4112e9b86f9c0c3812'
	 'af65eee20bb7166c9fe4186a14b8a643')
build() {
	cd "${srcdir}/sb0x-project-${pkgver}"
	mkdir -p "${pkgdir}/usr/bin/"
	mkdir -p "${pkgdir}/opt/"
	patch -p1 < ../sb0x_build.patch
	cd "$srcdir"
	mv "sb0x-project-$pkgver"  "${pkgdir}/opt/sb0x-project"
	mkdir "${pkgdir}/opt/sb0x-project/output"
	chown -R $USER:users "$pkgdir/opt/sb0x-project/" 
	chmod 775 "${pkgdir}/opt/sb0x-project/"*
	ln -s "${pkgdir}/opt/sb0x-project/sb0x.py" "${pkgdir}/usr/bin/sb0x-shell"
	chmod +x "$pkgdir/usr/bin/sb0x-shell"
	echo -e "\033[01;31mTo completely uninstall sb0x run: rm -r /opt/sb0x-project\033[0m"
}
