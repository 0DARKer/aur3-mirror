pkgname=poezio
pkgrel=1
pkgver=0.7.2
pkgdesc="A full-featured command-line irc-like jabber client"
arch=('any')
url="http://poezio.eu"
license=('zlib')
replaces=('poezio-hg' 'poezio-git')
provides=('poezio-hg' 'poezio-git')
depends=('python' 'python-sleekxmpp-poezio')
makedepends=('setuptools')
optdepends=('python-dnspython-hg: SRV records support (also, gmail)')
source=("http://dev.louiz.org/project/$pkgname/download/file/$pkgname-$pkgver.tar.xz")

sha512sums=('e890521f3e1d3f7091b7e1d9c51e8d8868c50a75baf3419c9043276fdbcb5a2eca19212dddd1185e9bcb46b9fcb759b97646a2dc0f6d130c773cc378abc3a906')

build() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir prefix=/usr install
}
