pkgname=poezio
pkgrel=1
pkgver=0.8
pkgdesc="A full-featured command-line irc-like xmpp (jabber) client"
arch=('i686' 'x86_64')
url="http://poez.io"
license=('zlib')
depends=('python' 'python-sleekxmpp' 'python-dnspython')
makedepends=('setuptools')
source=("http://dev.louiz.org/attachments/download/43/$pkgname-$pkgver.tar.xz")
optdepends=('python-pyinotify: Autoaway w/ screen plugin'
            'gnupg: GPG plugin'
            'figlet: ASCII art plugin'
            'pure-python-otr-git: OTR plugin'
            'python-sphinx: Generating documentation')

sha512sums=('4158f868ec1557be3b836e6963f2e82484f5df871627a9c423dab1dde587ddbdc11e176a547d06e76c6a534f2096c2624d37bc94f432ae8df641f5677800867f')

build() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir prefix=/usr install
}
