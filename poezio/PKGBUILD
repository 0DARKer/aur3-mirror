pkgname=poezio
pkgrel=2
pkgver=0.7.1
pkgdesc="A full-featured command-line irc-like (muc-centered) jabber client"
arch=('any')
url="http://poezio.eu"
license=('GPL')
depends=('python' 'python-sleekxmpp-devel')
makedepends=('setuptools')
source=("http://dev.louiz.org/project/$pkgname/download/file/$pkgname-$pkgver.tar.xz")
md5sums=('58e1ec36e9fe6d1503db11e8478cfb3e')
build() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir prefix=/usr install
}
