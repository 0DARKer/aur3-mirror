pkgname=poezio
pkgrel=1
pkgver=0.7.5.1
pkgdesc="A full-featured command-line irc-like jabber client"
arch=('any')
url="http://poezio.eu"
license=('zlib')
replaces=('poezio-hg' 'poezio-git')
provides=('poezio-hg' 'poezio-git')
depends=('python' 'python-sleekxmpp-poezio')
makedepends=('setuptools')
optdepends=('python-dnspython: SRV records support (also, gmail)'
            'asciidoc: Generating HTML documentation')
source=("http://dev.louiz.org/project/$pkgname/download/file/$pkgname-$pkgver.tar.xz")

sha512sums=('6a9f8c5f8a585a47ae07512bb7c3db0aa389f0b184509f8d7ec9ff456901926a35bca0462cc310e877f05dfca1e8da2b5c386057e61db7deb18b162dc1bec3ff')

build() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir prefix=/usr install
}
