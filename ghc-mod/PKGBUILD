# custom variables
_hkgname=ghc-mod
_licensefile=LICENSE

# PKGBUILD options/directives
pkgname=ghc-mod
pkgver=0.6.1
pkgrel=3
pkgdesc="Happy Haskell programming on Emacs"
url="http://www.mew.org/~kazu/proj/ghc-mod/"
license=("BSD3")
arch=('i686' 'x86_64')
makedepends=("ghc=7.0.3-2"
             "haskell-attoparsec=0.9.1.2"
             "haskell-attoparsec-enumerator=0.2.0.4"
             "haskell-directory=1.1.0.0"
             "haskell-enumerator=0.4.14"
             "haskell-filepath=1.2.0.0"
             "haskell-ghc-paths=0.1.0.8"
             "haskell-hlint=1.8.15"
             "haskell-old-time=1.0.0.6"
             "haskell-process=1.0.1.5"
             "haskell-transformers=0.2.2.0")
depends=()
options=('strip')
source=("http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz")

sha256sums=("3e1864d4553e1374cebce06a4654aaa78693c157b2ae2f8ec47f8fab7ae25c4c")

# PKGBUILD functions
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure -O --prefix=/usr --docdir=/usr/share/doc/${pkgname}
    runhaskell Setup build
}

package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
