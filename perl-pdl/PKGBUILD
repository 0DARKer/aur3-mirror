# Contributor: Colin Pitrat <colin.pitrat@gmail.com>

pkgname=perl-pdl
pkgver=2.4.7
pkgrel=1
pkgdesc='The Perl Data Language, a perl extension designed for scientific and bulk numeric data processing and display.'
url='http://pdl.perl.org/'
depends=('perl-opengl' 'libxmu' 'gsl')
arch=('i686' 'x86_64')
license=('GPL')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/C/CH/CHM/PDL-$pkgver.tar.gz")
md5sums=('e5d88775ea9b4b81fc4164dcc3ff63b5')

build() {
  cd  PDL-${pkgver}

  perl Makefile.PL INSTALLDIRS=vendor

  make
}

package() {
  cd  PDL-${pkgver}

  make DESTDIR=${pkgdir} install

  # Removing unnecessary stuff
  find ${pkgdir} -type f -name 'perllocal.pod' -delete;
  find ${pkgdir} -type f -name '.packlist' -delete;
}
