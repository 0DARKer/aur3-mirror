# Contributor: Leos Mach <leos@darkfate.net>
pkgname=tcpjunk
pkgver=2.6.80
pkgrel=2
arch=('i386' 'x86_64')
pkgdesc="TCPJunk is a TCP protocols manipulation and hacking utility"
url="http://code.google.com/p/tcpjunk/"
license=('GPL2')
depends=('gtk2' 'openssl' 'pkgconfig')
source=(http://tcpjunk.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('4c1e8a956ac68911f9287551291817f5')

build() {
    cd $startdir/src/$pkgname-$pkgver
    ./configure --prefix=/usr --sysconfdir=/etc 
    make || return 1
        make DESTDIR=$startdir/pkg install
	}