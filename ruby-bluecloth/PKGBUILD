# Contributor: Thomas Dziedzic < gostrc at gmail >

pkgname=ruby-bluecloth
pkgver=2.0.7
_pkgname='bluecloth'
pkgrel=1
pkgdesc='A ruby implementation of Markdown.'
arch=('any')
url='http://deveiate.org/projects/BlueCloth'
license=('GPL')
depends=('ruby')
source=("http://deveiate.org/code/$_pkgname-$pkgver.gem")
noextract=($_pkgname-$pkgver.gem)
md5sums=('1f80e7a5bd2ef08f7e49faaecec2e856')

build() {
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_pkgname-$pkgver.gem || return 1
}
