# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>
# Contributor: tobias <tobias funnychar archlinux.org>

pkgname=xfce4-notifyd-devel
pkgver=0.2.0
pkgrel=3
pkgdesc="notification daemon for the xfce desktop"
arch=(i686 x86_64)
license=('GPL2')
url="http://goodies.xfce.org/projects/applications/xfce4-notifyd"
groups=('xfce4-devel')
depends=('libxfce4ui-devel' 'hicolor-icon-theme' 'libcanberra')
makedepends=('pkgconfig' 'intltool')
provides=('notification-daemon')
conflicts=('notification-daemon' 'notification-daemon-xfce' 'xfce4-notifyd' 'xfce4-notifyd-git')
replaces=('notification-daemon' 'notification-daemon-xfce' 'xfce4-notifyd' 'xfce4-notifyd-git')
options=('!libtool')
install=xfce4-notifyd.install
source=(http://archive.xfce.org/src/apps/xfce4-notifyd/0.2/xfce4-notifyd-${pkgver}.tar.bz2)
md5sums=('4b614f738e87a7b84c2de0bddf6721b8')

build() {
	cd ${srcdir}/xfce4-notifyd-${pkgver}
	./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
		--localstatedir=/var --disable-static
	make
}

package() {
	cd ${srcdir}/xfce4-notifyd-${pkgver}
	make DESTDIR=${pkgdir} install
}
