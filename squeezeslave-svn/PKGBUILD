pkgname=squeezeslave-svn
pkgver=164
pkgrel=1
pkgdesc="SqueezeSlave is a software implementation of the Squeezebox from Slim Devices which is now owned by Logitech."
arch=('i686' 'x86_64')
url="http://code.google.com/p/squeezeslave/"
license=('GPL2')
conflicts=()
depends=(lirc)
makedepends=('subversion')
source=()
md5sums=()

_svntrunk="http://squeezeslave.googlecode.com/svn/squeezeslave/"
_svnmod=squeezeslave

build() {
  cd "$srcdir"
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  pwd
  cd $_svnmod/trunk/squeezeslave/
  make -f makefile.linux26-alsa-display
  mkdir -p $pkgdir/usr/bin/
  mv bin/squeezeslave $pkgdir/usr/bin/
}
