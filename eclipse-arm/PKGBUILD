pkgname=eclipse-arm
pkgver=2.2.2
pkgrel=1
pkgdesc="GNU ARM Eclipse Plug-in"
arch=('any')
url="http://sourceforge.net/projects/gnuarmeclipse"
install="eclipse-arm.install"
license=("GPL")
depends=('eclipse' 'eclipse-cdt')
source=("http://huzuyi.info/aur/$pkgname-src-${pkgver}.tar.gz")
md5sums=('22389db890d15ac43ad9795ab066fe18')
 
package() {
  _dest="${pkgdir}/usr/share/eclipse/dropins/arm/eclipse"
 
  cd "${srcdir}"
  mkdir -p "$_dest"
  # Features
  cp -r features $_dest 
  # Plugins
  cp -r plugins  $_dest
}
