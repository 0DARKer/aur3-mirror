# Maintainer: Thomas Zervogiannis <tzervo@gmail.com>
# Contributor: Thomas Zervogiannis <tzervo@gmail.com>

pkgname=maptool
pkgver=1.3.b87
pkgrel=2
arch=('any')
pkgdesc="An online, multiuser, networked, graphical, interactive, programmable virtual tabletop."
url="http://rptools.net/"
license=('APACHE' 'BSD' 'custom:JIDE' 'custom')
depends=('java-runtime')
source=(http://www.rptools.net/download/zip/maptool-1.3.b87.zip
        maptool.sh)
md5sums=('081284ca3121a177535e9ed0f36e9b46'
         '353e6cfec0453194a47c93b3095d0f10')

build() {
    for i in ${srcdir}/lib/*jar; do
        install -vDm644 $i ${pkgdir}/opt/rptools/lib/$i
    done

    for i in ${srcdir}/Misc/*xml; do
        install -vDm644 $i ${pkgdir}/opt/rptools/Misc/$i
    done
    for i in ${srcdir}/Misc/*sh; do
        install -vDm755 $i ${pkgdir}/opt/rptools/Misc/$i
    done

    install -vDm755 ${srcdir}/Launch\ MapTool.sh ${pkgdir}/opt/rptools/Launch\ MapTool.sh
    install -vDm644 ${srcdir}/maptool-${pkgver}.jar ${pkgdir}/opt/rptools/maptool-${pkgver}.jar

    install -vDm644 ${srcdir}/lib/readme/jide-3.2.3-LICENSE.htm ${pkgdir}/usr/share/licenses/rptools/jide-3.2.3-LICENSE.htm
    install -vDm644 ${srcdir}/lib/readme/xpp3-license.txt ${pkgdir}/usr/share/licenses/rptools/xpp3-license.txt

    install -vDm755 ${srcdir}/maptool.sh ${pkgdir}/etc/profile.d/maptool.sh
}
