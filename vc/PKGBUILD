# Maintainer: PedsXing <pedsxing at gmx dot net>
pkgname=vc
pkgver=0.6.0
pkgrel=1
pkgdesc="portable, zero-overhead SIMD library for C++"
url="http://code.compeng.uni-frankfurt.de/projects/vc/"
arch=('x86_64' 'i686')
license=('LGPLv3')
makedepends=('cmake')
source=("http://code.compeng.uni-frankfurt.de/attachments/download/119/Vc-${pkgver}.tar.gz")
md5sums=('565f5a2795c205a945bbe00d9f5e7c31')
 
build() {
  cd "$srcdir/Vc-$pkgver"
  cmake -DCMAKE_INSTALL_PREFIX=/usr ./
}

package() {
  cd "$srcdir/Vc-$pkgver"
  make DESTDIR="$pkgdir/" install
}

