# Maintainer: PedsXing <pedsxing at gmx dot net>
pkgname=vc
pkgver=0.5.80
pkgrel=1
pkgdesc="portable, zero-overhead SIMD library for C++"
url="http://code.compeng.uni-frankfurt.de/projects/vc/"
arch=('x86_64' 'i686')
license=('LGPLv3')
makedepends=('cmake')
source=("http://code.compeng.uni-frankfurt.de/attachments/download/78/Vc-${pkgver}.tar.gz")
md5sums=('79e4992393924454d102763e8f0b84c1')
 
build() {
  cd "$srcdir/Vc-$pkgver"
  cmake -DCMAKE_INSTALL_PREFIX=/usr ./
}

package() {
  cd "$srcdir/Vc-$pkgver"
  make DESTDIR="$pkgdir/" install
}

