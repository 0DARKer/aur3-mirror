pkgbase = openrc-devel
	pkgdesc = OpenRC init scripts
	pkgver = 20140612
	pkgrel = 1
	url = https://github.com/udeved/pkgbuilds
	arch = any
	groups = openrc
	groups = openrc-devel
	license = GPL2
	conflicts = openrc
	conflicts = openrc-git
	conflicts = openrc-arch-services-git
	conflicts = initscripts
	conflicts = systemd-sysvcompat
	source = http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/dev-vcs/git/files/git-daemon.confd
	source = http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/dev-vcs/git/files/git-daemon-r1.initd
	source = http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/dev-db/mysql-init-scripts/files/mysql-5.1.53-conf.d
	source = http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/dev-db/mysql-init-scripts/files/mysql-5.1.67-init.d-r1
	source = http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/dev-vcs/subversion/files/svnserve.confd
	source = http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/dev-vcs/subversion/files/svnserve.initd2
	source = http://dev.gentoo.org/~titanofold/postgresql-initscript-2.6.tbz2

pkgname = git-openrc
	pkgdesc = OpenRC git-daemon init script
	install = git.install
	depends = git
	depends = openrc-core
	backup = etc/conf.d/git-daemon

pkgname = mysql-openrc
	pkgdesc = OpenRC mysql init script
	install = mysql.install
	depends = mysql
	depends = openrc-core
	optdepends = bind-openrc: bind initscript
	backup = etc/conf.d/mysql

pkgname = postgresql-openrc
	pkgdesc = OpenRC postgresql init script
	install = postgresql.install
	depends = postgresql
	depends = openrc-core
	backup = etc/conf.d/postgresql

pkgname = subversion-openrc
	pkgdesc = OpenRC svnserve init script
	install = subversion.install
	depends = subversion
	depends = openrc-core
	backup = etc/conf.d/svn

