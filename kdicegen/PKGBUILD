# Maintainer: Michael Daffin <james1479 at gmail.com>

pkgname=kdicegen
pkgver=1.9.0
pkgrel=1
pkgdesc="A scriptable dungeon and dragons style dice roller"
arch=('i686' 'x86_64')
url="https://github.com/james147/KDiceGen"
license=('GPL2')
depends=('qt')
makedepends=('automoc4')
source=("https://github.com/downloads/james147/KDiceGen/${pkgname}-${pkgver}.tar.gz")
md5sums=('20d005152e5d8ba81b01dd90afca4d67')

build() {
    cd ${srcdir}/${pkgname}
    cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=RELEASE
    make
}

package() {
    cd ${srcdir}/${pkgname}
    make DESTDIR=${pkgdir} install
}
