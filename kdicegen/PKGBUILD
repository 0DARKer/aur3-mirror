# Maintainer: Michael Daffin <james1479 at gmail.com>

pkgname=kdicegen
pkgver=1.9.2
pkgrel=1
pkgdesc="A scriptable dungeon and dragons style dice roller"
arch=('i686' 'x86_64')
url="https://github.com/james147/KDiceGen"
license=('GPL2')
depends=('qt')
makedepends=('automoc4')
source=("https://github.com/downloads/james147/KDiceGen/${pkgname}-${pkgver}.tar.gz")
md5sums=('fe7470872842bc9052538d16376b3ddc')

build() {
    cd ${srcdir}/${pkgname}
    cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` -DCMAKE_BUILD_TYPE=RELEASE
    make
}

package() {
    cd ${srcdir}/${pkgname}
    make DESTDIR=${pkgdir} install
}
