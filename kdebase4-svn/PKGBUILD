# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdebase4-svn
pkgver=1211815
pkgrel=1
pkgdesc="KDE4 Base Programs"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdelibs4-svn' 'kdebase4-runtime-svn' 'qimageblitz' 'tidyhtml')
makedepends=('kdebase4-workspace-svn' 'pkgconfig' 'cmake' 'automoc4' 'libraw1394' 'ruby' 'subversion' 'docbook-xsl')
provides=(kdebase)
conflicts=(kdebase)
source=()
md5sums=()

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdebase/apps
_svnmod=kdebase

build() {

  cd $startdir/$srcdir

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/$srcdir/$_svnmod -DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/usr

  make
}

package() {

  cd $startdir/$srcdir/$_svnmod-build
  make DESTDIR=$startdir/pkg install || return 1
  rm -rf $startdir/$srcdir/$_svnmod-build
}
