# Maintainer: wido <widomaker2k7@gmail.com>
# Contributor: Changaco <me@changaco.net>

pkgname=mbrola
pkgver=3.01h
pkgrel=2
pkgdesc="A phoneme-to-audio converter used by many TTS (Text-to-speech) programs."
arch=('i686' 'x86_64')
url="http://tcts.fpms.ac.be/synthesis/mbrola.html"
license=(custom)
install=mbrola.install
source=(mbrola.tar.gz)
md5sums=('06e50c309cb931cceba614445c72d8a9')

build() {
  cd ${srcdir}
  install -Dm755 ${pkgname} ${pkgdir}/usr/share/${pkgname}/${pkgname} || return 1
  install -Dm755 ${pkgdir}/usr/share/${pkgname}/${pkgname} ${pkgdir}/usr/bin/${pkgname} || return 1
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}
