# Contributor: Joel Schaerer <joel.schaerer@laposte.net>

pkgname=itpp
pkgver=4.0.7
pkgrel=1
pkgdesc="a C++ library of mathematical, signal processing and communication routines"
arch=('i686' 'x86_64')
url="http://itpp.sourceforge.net/"
license=('GPL')
depends=('blas' 'lapack' 'fftw' 'perl')
makedepends=()
source=("http://downloads.sourceforge.net/itpp/itpp-${pkgver}.tar.gz")
md5sums=('e9d788d0e1e72ed0e93e037a6ef9aba0')

build() {
  cd $startdir/src/itpp-$pkgver
  ./configure --prefix=/usr ||  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
