# Contributor: Andrea Scarpino <bash.lnx@gmail.com>

pkgname=xmacro
pkgver=0.3
pkgrel=1
pkgdesc="XMacro recording and replaying keyboard and mouse events on an X server"
license=('GPL')
arch=('i686' 'x86_64')
url="http://xmacro.sourceforge.net/"
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-pre$pkgver-20000911.tar.gz xmacro.patch)
md5sums=('d2956b82f3d5380e58a75ccc721fb746'
	 'ad28aafb65c2d980e7f20d4634a5acdf')

build () {
  cd $startdir/src/$pkgname-pre$pkgver-20000911
  patch < ../xmacro.patch
  make || return 1
  install -D -m 755 xmacroplay $startdir/pkg/usr/bin/xmacroplay
  install -D -m 755 xmacrorec $startdir/pkg/usr/bin/xmacrorec
}
