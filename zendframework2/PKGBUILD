# Maintainer: David Roheim <david.roheim@gmail.com>
pkgname=zendframework2
pkgver=2.0.0beta3
pkgrel=1
pkgdesc="An object-oriented framework for PHP - Full version"
arch=('any')
url="http://framework.zend.com/"
license=('BSD')
depends=('php')
optdepends=('apache' 'mysql')
conflicts=('zendframework2-min')
source=("http://packages.zendframework.com/releases/ZendFramework-$pkgver/ZendFramework-$pkgver.tgz")
md5sums=('a0bdff26f22ed2832e0b63abc30faee6')

build() {
    true
}

package() {
    cd "$srcdir/ZendFramework-$pkgver"
    install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    cp -R . "$pkgdir/usr/share/$pkgname"
    install -d "$pkgdir/usr/bin"
    ln -s "/usr/share/$pkgname/bin/zf.sh" "$pkgdir/usr/bin/zf"
}

