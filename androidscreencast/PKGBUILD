pkgname=androidscreencast
pkgver=20120317
pkgrel=4
pkgdesc="Desktop app to control an android device remotely"
arch=('i686' 'x86_64')
url="http://code.google.com/p/androidscreencast/"
license=('Apache License 2.0')
depends=('jdk' 'jre' 'android-sdk')
makedepends=('git')
provides=('androidscreencast')
conflicts=('androidscreencast')

_gitroot="git@github.com:PTKDev/androidscreencast.git"
_gitname="androidscreencast"
_gitbranch="master"

build() {
  cd "${srcdir}"
  
  if [ -d $_gitname ] ; then
    cd $_gitname && git checkout $_gitbranch && git pull
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname && cd $_gitname
  fi
  
  cd ./src/
  sh install.sh
}
 
package() {
  cd "${srcdir}/${_gitname}"
}
