# CPAN Name  : version
# Contributor: Caleb Cushing <xenoterracide@gmail.com>
# Generator  : CPANPLUS::Dist::Arch 0.20
pkgname='perl-version'
pkgver='0.82'
pkgrel='2'
pkgdesc="structured version objects"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')

url='http://search.cpan.org/dist/version'

source=('http://search.cpan.org/CPAN/authors/id/J/JP/JPEACOCK/version-0.82.tar.gz')
md5sums=('c073f079557297003d805b535711c5d1')

build() {
  DIST_DIR="${srcdir}/version-0.82"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

