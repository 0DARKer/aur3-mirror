# Maintainer: Diego Mascialino <diego@gcoop.coop>

pkgname=pilas-hg
pkgver=0
pkgrel=1
pkgdesc="Un motor para hacer videojuegos de manera sencilla"
arch=('any')
depends=('python2' 'python2-pysfml' 'setuptools' 'pybox2d-svn')
makedepends=('mercurial')
license=('GPL')
url="http://www.pilas-engine.com.ar"

build() {
    cd ${srcdir}
    if [ -d pilas/.hg ]; then
        (cd pilas && hg pull -u)
    else
        hg clone https://bitbucket.org/hugoruscitti/pilas
    fi

    cd pilas
    python2 setup.py build
    python2 setup.py install --root=$startdir/pkg
}

md5sums=()

