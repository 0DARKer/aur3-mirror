# Maintainer: der_FeniX <derfenix@gmail.com>
# Contributor: Alexander Drozdov <adrozdoff@gmail.com>
pkgname=qross
pkgver=0.2.2
pkgrel=1
pkgdesc="Qt-only fork of Kross, the KDE scripting framework"
arch=('i686' 'x86_64')
url="http://github.com/0xd34df00d/Qross"
license=('GPL')
depends=('qt>=4.6.0')
makedepends=('git')
conflicts=('qross-git')
source=(https://github.com/downloads/0xd34df00d/Qross/$pkgname-$pkgver.tar.bz2)

build() {
  cd $srcdir/$pkgname-$pkgver/src/qross

  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make  || return 1
  make DESTDIR=$pkgdir install
}

md5sums=('03380581f45147330be851d5c6c6eabe')
