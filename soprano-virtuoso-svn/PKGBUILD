# Contributor: mutlu_inek <mutlu_inek@yahoo.de>

pkgname=soprano-virtuoso-svn
pkgver=1037699
pkgrel=1
pkgdesc="Soprano with the unstable but highly performant Virtuoso backend enabled"
arch=('i686' 'x86_64')
url="http://www.kde.org/"
license=('GPL')
depends=('qt' 'clucene' 'redland' 'iodbc' 'virtuoso>=5.0.12' 'openjdk6')
makedepends=('subversion')
provides=('soprano=2.3.70')
conflicts=('soprano')
install=$pkgname.install
source=()
md5sums=()

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/kdesupport/soprano
_svnmod=soprano

build() {
  . /etc/profile.d/openjdk6.sh

  if [ "${CARCH}" = "x86_64" ]; then
    _jvmarch=amd64
  else
    _jvmarch=i686
  fi

  # start building
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/src/$_svnmod -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_SKIP_RPATH=OFF -DCMAKE_BUILD_TYPE=Release

  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  #clean up build directory
  rm -rf $startdir/src/$_svnmod-build
}
