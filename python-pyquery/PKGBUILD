pkgname=python-pyquery
pkgver=0.6.1
pkgrel=1
pkgdesc="A jquery-like library for python"
arch=(any)
url="http://www.bitbucket.org/olauzanne/pyquery/"
depends=('python>=2.4' 'python-lxml>=2.1')
source=(http://pypi.python.org/packages/source/p/pyquery/pyquery-${pkgver}.tar.gz)
license=('BSD License')

build()
{
  cd $startdir/src/pyquery-$pkgver
  python setup.py install --root=$startdir/pkg
}

md5sums=('097caf2f35efe16f911b6b50b89611e5')
