# Contributor: Arnau Sanchez <tokland {at} gmail {dot} com>

_pkg=pyquery
pkgname=python-pyquery
pkgver=1.0
pkgrel=1
pkgdesc="A jquery-like library for python."
arch=('any')
url="http://www.bitbucket.org/olauzanne/pyquery"
license=('BSD')
depends=('python' 'python3-lxml')
source=("http://pypi.python.org/packages/source/p/$_pkg/$_pkg-$pkgver.tar.gz")
md5sums=('c96bc7a8e1fcdd3ede4769b2f44a6ec3')
 
build() {
  cd "$srcdir/$_pkg-$pkgver"

  python setup.py build
}

package() {
  cd "$srcdir/$_pkg-$pkgver"

  python setup.py install --root="$pkgdir/"

  # license
  install -d "$pkgdir/usr/share/licenses/$pkgname"
  ln -s /usr/share/licenses/${depends[1]}/BSD.txt \
    "$pkgdir/usr/share/licenses/$pkgname"
}
