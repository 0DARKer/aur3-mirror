        changelog)
sha1sums=('3979750567cfcce6a21886a26e6b0701d0dd2a86'
          '358d84cbf29e98d6a8db981c033ef2e8ea3d0e62')

package() {
  cd "$srcdir/matthiaskrgr-gitdiffbinstat-7eb8e9f"
  install -Dm 755 ./gitdiffbinstat.sh ${pkgdir}/usr/bin/gitdiffbinstat
}
