pkgname=gitdiffbinstat
pkgver=1.6
pkgrel=1
pkgdesc="A bash script to get a git diff --shortstat-like output for changed binary files"
arch=('any')
url="http://aur.archlinux.org/packages.php?ID=55519"
license=('GPL')
depends=('git' 'gawk')
source=('gitdiffbinstat.sh'
        'changelog')
sha1sums=('c1b7af1dc61397e38baee4e9ad43e85590c5eac0'
          'a9017f8d2b2122c83f116a08a729fdbc8f28e16b')

build() {
  install -Dm 755 $srcdir/gitdiffbinstat.sh ${pkgdir}/usr/bin/gitdiffbinstat
}
