# Maintainer: Baptiste Jonglez <zerstorer at free dot fr>
pkgname=django-sentry
pkgver=1.6.10
pkgrel=1
pkgdesc="Real-time logging for Django: a generic interface to view and interact with your error logs."
arch=('any')
url="http://pypi.python.org/pypi/django-sentry"
license=('custom')
depends=('python2' 'django' 'django-paging' 'django-indexer')
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/d/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=("956007367aa2a43969fe12ef3b236b4b")

build() {
  cd "$srcdir/django-sentry-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/django-sentry-$pkgver"
  python2 setup.py install --root=$pkgdir/ --optimize=1
}

