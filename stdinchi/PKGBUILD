pkgname=stdinchi
pkgver=1.02
pkgrel=1
pkgdesc="IUPAC Standard InChI/InChIKey utility"
arch=('i686' 'x86_64')
url="http://www.iupac.org/inchi/download/index.html"
license=('LGPL')
makedepends=('gcc' 'make')
source=("http://www.iupac.org/inchi/download/STDINCHI-1-API.zip")

build() {
  cd "$startdir/src/STDINCHI-1-API/STDINCHI/gcc_makefile/"
  make || return 1
  install -m755 -D "stdinchi-1" "$startdir/pkg/usr/bin/stdinchi-1"
  ln -s "$startdir/pkg/usr/bin/stdinchi-1"  "$startdir/pkg/usr/bin/stdinchi"
}

md5sums=('aa8bab9424a4c9683b63706c18d55479')
