# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=lrc
pkgver=0.6
pkgrel=1
pkgdesc="A system for packing many files into a single file for installation and use in a program as its resources."
arch=(i686 x86_64)
url="https://bitbucket.org/StarFire/lrc/overview"
license=('GPL3')
depends=('sdl_image' 'tinyxml')
options=('!libtool')
#source=("https://bitbucket.org/StarFire/lrc/downloads/$pkgname-$pkgver.tar.bz2") # broken, waiting for fix
source=("https://bitbucket.org/StarFire/lrc/get/$pkgver.tar.bz2")
#md5sums=('a0688fcf3add4baa74cfa03ac7c947eb')
md5sums=('472df506a80005a9db6c3fadfa4f9909')

build() {
#  cd "$srcdir/$pkgname-$pkgver"
  cd "$srcdir/"*-$pkgname-*

  # do not use inner tinyxml
  sed -i '/SUBDIRS.*tinyxml/d;s/ -[IL]tinyxml//' src/compiler/Makefile.*

  ./bootstrap.sh
  ./configure --prefix=/usr \
              --enable-static=no
  make
}

package() {
#  cd "$srcdir/$pkgname-$pkgver"
  cd "$srcdir/"*-$pkgname-*

  make DESTDIR="$pkgdir/" install
}

