# Maintainer: Peter Hatina <phatina@gmail.com>
pkgname=arduino-rfm12
pkgver=1.0
pkgrel=1
pkgdesc="Arduino library for RFM12 wireless module."
arch=('any')
url="http://jeelabs.net/projects/cafe/wiki"
license=('MIT')
depends=(arduino)
conflicts=()
source=("http://jeelabs.org/pub/snapshots/RF12.zip")
md5sums=('8fa4db8121ee8f5a7593ef98dae15112')

package() {
    cd $pkgdir
    mkdir -p usr/share/arduino/libraries/rfm12
    mkdir -p usr/share/arduino/examples/rfm12
    cp -R $srcdir/RF12/examples/* $pkgdir/usr/share/arduino/examples/rfm12
    find $srcdir/RF12 -maxdepth 2 -regex ".+\.\(h\|cpp\)" -print0 | xargs -0 -r cp -t $pkgdir/usr/share/arduino/libraries/rfm12/
    find . -regex ".*" | xargs chmod a-x
}
