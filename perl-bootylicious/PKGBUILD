pkgname='perl-bootylicious'
pkgver='1.04'
pkgrel='1'
pkgdesc=""
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-mojox-validator' 'perl-mojolicious>=5')
optdepends=( 'perl-text-markdown: Markdown support' )
makedepends=()
url='http://search.mcpan.org/dist/Bootylicious'
source=('http://search.mcpan.org/CPAN/authors/id/O/OL/OLEG/Bootylicious-1.04.tar.gz')
md5sums=('87d211361959613b399437cbd4c4345e')
sha512sums=('35f5ede41ad368bfefa5f3e48210bba069ea06d95859fb5d62ad4d1723b57da7711458abc7329aef8c01b8b2a6a106eac20e9dfffd287215db4857dc7873bd56')
_distdir="Bootylicious-1.04"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

