# AUR package maintainer: Berseker <berseker86 at gmail dot com>
# Based on nuovegnomegray PKGBUILD by 3V0LU710N <db_eee at yahoo dot com>

pkgname=nouvegnome-icon-theme
pkgver=20130224
pkgrel=1
pkgdesc="nouveGnome is a colorful icon set compatible with most light GTK themes."
arch=('any')
makedepends=('p7zip')
optdepends=('gnome-icon-theme: GNOME icon theme')
url="http://gnome-look.org/content/show.php/nouveGnome?content=125474"
license=('GPL')
source=(
http://www.deviantart.com/download/301614547/nouvegnome_by_tsujan-d4zkn9v.7z)

build()
{
 cd "$srcdir"
 install -d "${pkgdir}/usr/share/icons/"
 cp -rf "nouveGnome" "${pkgdir}/usr/share/icons/" || return 1
 find -type f -print0 | xargs -0 chmod 644
}

md5sums=('d50926f96696d0fbb2591d5af99462fc')
