# Maintainer Brad Arrington

pkgname=opensmtpd
pkgver=201205132316
pkgrel=1
pkgdesc="OpenSMTPD"
arch=(i686 x86_64)
url="http://www.opensmtpd.org/"
license=('BSD')
conflicts=('sendmail' 'postfix')
options=(!strip)

source=(http://www.opensmtpd.org/archives/opensmtpd-201205132316.tar.gz
	bootstrap.patch)

build() {
    cd ${srcdir}/
}

package() {

  cd "$srcdir/$pkgname"

  patch -p1 < $srcdir/bootstrap.patch 

  ./bootstrap
  ./configure --prefix=/usr --sysconfdir=/etc

  make || return 1
  make DESTDIR="$pkgdir/" install
}
md5sums=('a65b421ba3eff1803bbf3de105dc7a9d'
         'aa56e5586f1e5a8bb0a919ea8e66984c')
