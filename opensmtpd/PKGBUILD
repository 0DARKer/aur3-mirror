# Maintainer Brad Arrington

pkgname=opensmtpd
pkgver=201207111000
pkgrel=1
pkgdesc="OpenSMTPD"
arch=(i686 x86_64)
url="http://www.opensmtpd.org/"
license=('BSD')
conflicts=('sendmail' 'postfix')
options=(!strip)

source=(http://www.opensmtpd.org/archives/opensmtpd-201207111000.tar.gz
	bootstrap.patch)

build() {
    cd ${srcdir}/
}

package() {

  export LDFLAGS="-lrt -Wl,-O1,--sort-common,--as-needed,-z,relro"

  cd "$srcdir/$pkgname"

  patch -p1 < $srcdir/bootstrap.patch 

  ./bootstrap
  ./configure --prefix=/usr --sysconfdir=/etc

  make || return 1
  make DESTDIR="$pkgdir/" install
}
md5sums=('9b0328521293540fcee34718bf7df848'
         'aa56e5586f1e5a8bb0a919ea8e66984c')
