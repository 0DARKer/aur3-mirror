# Maintainer: Brad Arrington bradla8 at yahoo.com

pkgname=opensmtpd
pkgver=1.0
pkgrel=3
pkgdesc="Port of OpenBSD smtpd to Linux"
arch=('i686' 'x86_64')
url="http://www.openbsd.org/"
license="BSD"
depends=(gcc libbsd)
makedepends=(make gcc libbsd)
provides=()
conflicts=()
replaces=()
backup=()
install=smtpd.conf
source=(http://www.scramblemy.net/opensmtpd/$pkgname-$pkgver.tar.gz)
md5sums=('9fcea19fde21974e6f6587b1da3cabea')


build() {

  unset LDFLAGS

  cd $startdir/src/$pkgname-$pkgver
  make

  mkdir -p $pkgdir/usr/sbin
  mkdir -p $pkgdir/etc/mail
  cp makemap $pkgdir/usr/sbin/.
  cp smtpctl $pkgdir/usr/sbin/.
  cp smtpd $pkgdir/usr/sbin/.
  cp ../../smtpd.conf $pkgdir/etc/mail/.
}
