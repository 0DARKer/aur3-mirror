# Contributor: portix <portix@gmx.net>

pkgname=dwb-hg
pkgver=282
pkgrel=1
pkgdesc="Tiling web browser based on webkit and gtk with vi-like keyboard shortcuts, latest hg-pull" 
url="http://bitbucket.org/portix/dwb/wiki" 
arch=('i686' 'x86_64')
license=('GPL')
depends=('libwebkit')
provides=(dwb)
conflicts=(dwb)
makedepends=('pkgconfig' 'mercurial')

_hgroot="https://bitbucket.org/portix"
_hgrepo="dwb"

build() {
  cd ${srcdir}/${_hgrepo}
  make 
}
package() {
  cd ${srcdir}/${_hgrepo}
  make DESTDIR=${pkgdir} install 
}
