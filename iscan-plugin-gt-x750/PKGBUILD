# Maintainer: Ilmari Repo <ilmari@gmail.com>
# Based on the PKGBUILD from http://aur.archlinux.org/packages.php?ID=40933

pkgname=iscan-plugin-gt-x750
pkgver=2.1.0_4
pkgrel=1
pkgdesc="iscan plugin for Epson Perfection 4490 / GT-X750"
arch=('i686' 'x86_64')
url="http://avasys.jp/eng/linux_driver/"
license=('custom')
depends=('iscan')
makedepends=('rpmextract')
install=gt-x750.install

  _VERSION="2.1.0-4"
if [ "$CARCH" = "i686" ]; then
  source=(http://linux.avasys.jp/drivers/iscan/plugins/GT-X750/${pkgname}-${_VERSION}.c2.i386.rpm)
  _ARCH=i386
  md5sums=('efb3093b4ca038495059fae1b48c93d1')
elif [ "$CARCH" = "x86_64" ]; then
  source=(http://linux.avasys.jp/drivers/iscan/plugins/GT-X750/${pkgname}-${_VERSION}.c2.x86_64.rpm)
  _ARCH=x86_64
  md5sums=('4fe1700c1f6631858fa8c742eb966998')
fi

build() {
  cd ${startdir}
  rpmextract.sh ${pkgname}-${_VERSION}.c2.${_ARCH}.rpm
  mv usr ${pkgdir}
  if [ "$CARCH" = "x86_64" ]; then mv ${pkgdir}/usr/lib64 ${pkgdir}/usr/lib; fi
  mkdir -p ${pkgdir}/usr/share/licenses/iscan
  mv ${pkgdir}/usr/share/doc/${pkgname}-${_VERSION%-*}/AVASYSPL.en.txt ${pkgdir}/usr/share/licenses/iscan/
  rm -rf ${pkgdir}/usr/share/doc
}

