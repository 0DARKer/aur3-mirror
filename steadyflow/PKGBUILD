# Maintainer: zbito <ztokarczyk at gmail dot com>

pkgname=steadyflow
_pkgreal=steadyflow
pkgver=0.1.5
pkgrel=2
pkgdesc="Steadyflow is a GTK+ based download manager that aims for minimalism, ease of use, and a clean, malleable codebase."
arch=('i686' 'x86_64')
url="https://launchpad.net/steadyflow"
license=('GPL3')
depends=('libgee')
makedepends=('vala' 'bzr')
conflicts=('vala-git' 'vala-devel' 'steadyflow-bzr')
source=(http://launchpad.net/steadyflow/trunk/${pkgver}/+download/steadyflow-${pkgver}.tar.gz)
md5sums=('78dc1e23794def383a22024c704ddfcf')

build() {
  msg "Connecting to the server..."

	cd ${srcdir}/${pkgname}-${pkgver}

	# Build
    cmake -DCMAKE_INSTALL_PREFIX="/usr" . || return 1
    make || return 1
    make install DESTDIR=$pkgdir
}
