pkgname=appmenu-qt
pkgbranch=trunk
pkgver=0.1.2
pkgrel=1
pkgdesc="Application menu module for Qt"
arch=('i686' 'x86_64')
url="https://launchpad.net/appmenu-qt"
license=('GPL')
depends=('libdbusmenu-qt>=0.7.0' 'qt-appmenu')
makedepends=('cmake' 'automoc4')
source=(http://launchpad.net/${pkgname}/${pkgbranch}/${pkgver}/+download/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('07939d653a036b6676c624a94d53ca327bc3415f')

build() {
   cd "${srcdir}/${pkgname}-${pkgver}"
   cmake . -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
   make
}

package() {
   cd "${srcdir}/${pkgname}-${pkgver}"
   make DESTDIR="${pkgdir}" install
}
