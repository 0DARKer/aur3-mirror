pkgname=appmenu-qt
pkgbranch=trunk
pkgver=0.2.4
pkgrel=1
pkgdesc="Application menu module for Qt"
arch=('i686' 'x86_64')
url="https://launchpad.net/appmenu-qt"
license=('GPL')
depends=('libdbusmenu-qt>=0.9.0' 'qt-appmenu>=4.7.4')
makedepends=('cmake' 'automoc4')
source=(http://launchpad.net/${pkgname}/${pkgbranch}/${pkgver}/+download/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('45a8a3d95b777d1e9fc82f3470d79d718895d799')

build() {
   cd "${srcdir}/${pkgname}-${pkgver}"
   cmake . -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
   make
}

package() {
   cd "${srcdir}/${pkgname}-${pkgver}"
   make DESTDIR="${pkgdir}" install
}
