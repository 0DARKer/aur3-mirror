# Maintainer: korjjj <korjjj+aur[at]gmail[dot]com>

pkgname=gns3-gui
pkgver=1.0
pkgrel=1
pkgdesc='GNS3 GUI. This is an early release of the new GNS3.'
arch=('any')
url='https://github.com/GNS3/gns3-gui'
license=('GPL3')
makedepends=('python-setuptools')
depends=('python-pyqt4' 'python-apache-libcloud' 'python-ws4py' 'python-requests' 'python-paramiko' 'dynamips')
optdepends=('gns3-server')
conflicts=('gns3' 'gns3-git')
source=("https://github.com/GNS3/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('3df6a926e9cefbc34968ad4efb634114')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
