# Maintainer: korjjj <korjjj+aur@gmail.com>

pkgname=gns3-gui
_gitver=1.0-beta1
pkgver=1.0beta1
pkgrel=1
pkgdesc='GNS3 GUI. This is an early release of the new GNS3. _You need a GNS3 membership in order to use it._'
arch=('any')
url='https://github.com/GNS3/gns3-gui'
license=('GPL3')
makedepends=('python-setuptools')
depends=('python-pyqt4' 'python-apache-libcloud' 'python-ws4py' 'python-requests' 'dynamips')
optdepends=('gns3-server')
conflicts=('gns3' 'gns3-git')
source=("https://github.com/GNS3/${pkgname}/archive/v${_gitver}.tar.gz")
md5sums=('ea93fbff1ae26b61561fcfa6f696e64e')

pkgver() {
	echo ${_gitver} | tr -d '-'
}

package() {
  cd ${srcdir}/${pkgname}-${_gitver}
  python setup.py install --root=${pkgdir} --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
