# Maintainer: korjjj <korjjj+aur@gmail.com>

pkgname=gns3-gui
_gitver=1.0-beta2
pkgver=1.0beta2
pkgrel=1
pkgdesc='GNS3 GUI. This is an early release of the new GNS3.'
arch=('any')
url='https://github.com/GNS3/gns3-gui'
license=('GPL3')
makedepends=('python-setuptools')
depends=('python-pyqt4' 'python-apache-libcloud' 'python-ws4py' 'python-requests' 'dynamips')
optdepends=('gns3-server')
conflicts=('gns3' 'gns3-git')
source=("https://github.com/GNS3/${pkgname}/archive/v${_gitver}.tar.gz")
md5sums=('3f097d7eda1a511fbe39d9ae97d7f8fd')

pkgver() {
	echo ${_gitver} | tr -d '-'
}

package() {
  cd ${srcdir}/${pkgname}-${_gitver}
  python setup.py install --root=${pkgdir} --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
