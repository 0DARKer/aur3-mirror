# Maintainer: korjjj <korjjj@gmail.com>

pkgname=gns3-gui
_gitver=1.0-alpha3
pkgver=1.0alpha3
pkgrel=1
pkgdesc='GNS3 GUI. This is an early release of the new GNS3. _You need a GNS3 membership in order to use it._'
arch=('any')
url="https://github.com/GNS3/gns3-gui"
license=('GPL3')
depends=('python-pyqt4' 'python-apache-libcloud' 'ws4py' 'dynamips')
optdepends=('gns3-server: if you plan to run it on the same host.')
conflicts=('gns3' 'gns3-git')
source=("https://github.com/GNS3/${pkgname}/archive/v${_gitver}.tar.gz")
md5sums=('45e9913a284646341cc5ed45a4610fb2')

pkgver() {
	echo ${_gitver} | tr -d '-'
}

package() {
  cd ${srcdir}/${pkgname}-${_gitver}
  python3 setup.py install --root=${pkgdir} --optimize=1
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
