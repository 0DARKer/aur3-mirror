# Maintainer: Sven-Hendrik Haase
pkgname=python2-alembic
pkgver=0.5
pkgrel=1
pkgdesc="A lightweight database migration tool for usage with the SQLAlchemy"
arch=('any')
url="https://bitbucket.org/zzzeek/alembic"
license=('MIT')
groups=()
depends=('python2' 'python2-sqlalchemy' 'python2-mako')
source=(https://bitbucket.org/zzzeek/alembic/get/rel_0_5_0.tar.bz2)
sha1sums=('f80e2bb8a35a2f32d030910e70fdf81e16972608')

build() {
  cd "$srcdir"/zzzeek-alembic-*

  python setup.py build
}

package() {
  cd "$srcdir"/zzzeek-alembic-*
  python setup.py install --root="$pkgdir/" --prefix="/usr" --optimize=1
}

