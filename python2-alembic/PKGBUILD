# Maintainer: googol <googol@lavabit.com>
pkgname=python2-alembic
pkgver=0.5
pkgrel=2
pkgdesc="A lightweight database migration tool for usage with the SQLAlchemy"
arch=('any')
url="https://bitbucket.org/zzzeek/alembic"
license=('MIT')
groups=()
depends=('python2' 'python2-sqlalchemy' 'python2-mako')
source=(https://bitbucket.org/zzzeek/alembic/get/rel_0_5_0.tar.bz2)
sha1sums=('88ba1189a189cb7d49d802ca855817dc9cd4d0ab')

build() {
  cd "$srcdir"/zzzeek-alembic-*
  python2 setup.py build
}

package() {
  cd "$srcdir"/zzzeek-alembic-*
  python2 setup.py install --root="$pkgdir/" --prefix="/usr" --optimize=1
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:

