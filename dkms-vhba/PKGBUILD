pkgname=dkms-vhba
_pkgname=vhba-module
_module=vhba
pkgver=20110915
pkgrel=2
pkgdesc="DKMS controlled drivers for VHBA module for CDEMU"
arch=('any')
url="http://cdemu.sourceforge.net/"
license=('GPL2')
depends=('dkms')
provides=('vhba-module')
conflicts=('vhba-module')
install="${pkgname}.install"
source=("http://downloads.sourceforge.net/cdemu/$_pkgname-$pkgver.tar.gz"
	${pkgname}.install
	dkms.conf)
md5sums=('fb90cd8fc4cd74d08c92e8235f99f1f4'
	 '969fe7ea975b4a2e1291f7fd9090c103'
	 '9836a45e231a4874b2bfc5562fb9a4af')

build() {
    cd ${srcdir}/${_pkgname}-${pkgver}

}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}

    mkdir -p ${pkgdir}/usr/src/${_module}-${pkgver}
    cp -a * ${pkgdir}/usr/src/${_module}-${pkgver} 
    cp ${srcdir}/dkms.conf ${pkgdir}/usr/src/${_module}-${pkgver}
}  

