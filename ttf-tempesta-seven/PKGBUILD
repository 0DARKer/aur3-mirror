pkgname=ttf-tempesta-seven
pkgver=1.0
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="Tempesta seven font pack."
arch=('any')
url="http://www.dafont.com/pf-tempesta-seven.font"
license="Unknown"
source=(${pkgname}.zip::http://img.dafont.com/dl/?f=pf_tempesta_seven)
md5sums=('b80fdbd6e8cb2dd7c0a27a9fedc60aa8')
install=$pkgname.install

package() {
  install -d "$pkgdir/usr/share/fonts/TTF"
  cp -dpr --no-preserve=ownership "$srcdir/"*.ttf "$pkgdir/usr/share/fonts/TTF/"
}
