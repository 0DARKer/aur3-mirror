# Contributor: Calimero <calimeroteknik@free.fr>
pkgname=defora-player
pkgver=0.1.2
pkgrel=1
pkgdesc="The Defora lightweight mplayer frontend"
arch=('i686' 'x86_64')
url="http://defora.org/os"
license=('GPL3')
depends=('defora-libsystem' 'gtk2' 'mplayer')
source=(https://www.defora.org/os/download/download/3277/Player-${pkgver}.tar.gz)
md5sums=('4ed240e99eaafa14c5a713d5adc70369')

build() {
  cd "$srcdir"/Player-$pkgver
  make || return 1
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
