# Maintainer: Hugues Chabot <at google mail>
_npmname=eslint
_npmver=0.11.0
pkgname=nodejs-eslint # All lowercase
pkgver=0.11.0
pkgrel=1
pkgdesc="An Esprima-based pattern checker for JavaScript."
arch=(any)
url="http://eslint.org"
license=('MIT')
depends=('nodejs' )
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
noextract=($_npmname-$_npmver.tgz)
sha256sums=('acfdc630a75cd5ddb45ea82f018fe5e8c979e8a69d67d6bede2a717e489d224a')

package() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$_npmver
}

