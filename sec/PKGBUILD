# Contributor: Ansuransax <ansuransax at hotmail dot com>
pkgname=sec
pkgver=2.4.1
pkgrel=1
pkgdesc="A logfile monitoring tool with support for event correlation, written in perl"
arch=('i686')
url="http://kodu.neti.ee/~risto/sec/"
license=('GPL')
depends=('perl>=5.6')
source=(http://downloads.sourceforge.net/simple-evcorr/$pkgname-$pkgver.tar.gz)
md5sums=('f233b3acf7cebdb573f4ff1f441866c3')


build() {
	# Copy binaries, scripts, and others..
	install -d $startdir/pkg/usr/share/$pkgname
	install -m 644 $startdir/src/$pkgname-$pkgver/ChangeLog $startdir/pkg/usr/share/$pkgname
	install -m 644 $startdir/src/$pkgname-$pkgver/README $startdir/pkg/usr/share/$pkgname
	install -m 755 $startdir/src/$pkgname-$pkgver/sec.pl $startdir/pkg/usr/share/$pkgname
	install -d $startdir/pkg/usr/share/$pkgname/contrib
	install -m 644 $startdir/src/$pkgname-$pkgver/contrib/* $startdir/pkg/usr/share/$pkgname/contrib
	install -m 755 $startdir/src/$pkgname-$pkgver/contrib/convert.pl $startdir/pkg/usr/share/$pkgname/contrib/convert.pl
	install -m 755 $startdir/src/$pkgname-$pkgver/contrib/swatch2sec.pl $startdir/pkg/usr/share/$pkgname/contrib/swatch2sec.pl

	# create symbolic link
	install -d $startdir/pkg/usr/bin
	ln -s /usr/share/$pkgname/sec.pl $startdir/pkg/usr/bin/sec.pl 
	  
	# Copy license and manpage
	install -d $startdir/pkg/usr/share/licenses/$pkgname
	install -m 644 $startdir/src/$pkgname-$pkgver/COPYING $startdir/pkg/usr/share/licenses/$pkgname/COPYING
	install -d $startdir/pkg/usr/man/man1
	install -m 644 $startdir/src/$pkgname-$pkgver/sec.pl.man $startdir/pkg/usr/man/man1/sec.pl.1
}


