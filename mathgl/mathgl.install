info_dir=/usr/share/info
info_files=(mathgl_en.info mathgl_en.info-1 mathgl_en.info-2 mathgl_en.info-3
            mathgl_ru.info mathgl_ru.info-1 mathgl_ru.info-2 mathgl_ru.info-3
            mathgl_ru.info-4 mgl_en.info mgl_ru.info mgl_ru.info-1 mgl_ru.info-2)

post_install() {
  for f in ${info_files[@]}; do
    install-info ${info_dir}/$f.gz ${info_dir}/dir 2> /dev/null
  done
}

post_upgrade() {
	post_install
}

pre_remove() {
  for f in ${info_files[@]}; do
    install-info --delete ${info_dir}/$f.gz ${info_dir}/dir 2> /dev/null
  done
}
