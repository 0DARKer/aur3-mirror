pkgname=gnushogi
pkgver=1.4.0
pkgrel=1
pkgdesc="A program that plays Shogi (Japanese chess). Also includes xshogi"
url="http://www.cs.caltech.edu/~mvanier/hacking/gnushogi/gnushogi.html"
arch=('i686' 'x86_64')
license=('GPL')
depends=('ncurses' 'libxaw')
source=(
    ftp://ftp.gnu.org/gnu/gnushogi/$pkgname-$pkgver.tar.bz2
    $pkgname-$pkgver.patch)
sha256sums=(
    '466730f54ee6d6ad61a06ccfccf2dc63e47559697116b143b93c624a9ca9b301'
    'db89765d99316ffce9c4262011ee1d7ac9204252b242da16fcac72ad33ccb735')
sha512sums=(
    '9b27cd5d257dc3db718678e6c9601ef7bf9f0981ec9838c26d50fb6d8973a6ebcfb0dc8d22f1f35c3a40d2851a353832ee8a8faed926c83b25391ff59909afb3'
    '6aea3baf22a9ef6852fa9f0ad38c2c69477f6c9e32bf0d6c2593b8c84693dd25e74a8e6c6b56ec3d3c7a7f1719beaaeb6a3509b2a5a7c735699c3361fb225e94')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -Np1 -i ../$pkgname-$pkgver.patch
  ./configure --prefix=/usr --with-xshogi
  make
  make prefix="$pkgdir/usr" install
}
