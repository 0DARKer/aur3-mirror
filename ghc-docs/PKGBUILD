pkgname=ghc-docs
pkgver=7.0.4
pkgrel=1
pkgdesc="Documents for the Glasgow Haskell Compiler"
arch=(any)
url="http://haskell.org/haskellwiki/GHC"
license=('GPL')
source=(http://www.haskell.org/ghc/docs/$pkgver/Cabal.html.tar.bz2
        http://www.haskell.org/ghc/docs/$pkgver/users_guide.html.tar.bz2
        )
md5sums=('150459b9363fb127140f4b4f55c0a838'
         '0b38acdbcbc748eaeafe704359d7645f')

package() {
      cd $srcdir
      dir=$pkgdir/usr/share/doc/ghc/html
      install -dm755 $dir || return 1
      mv $srcdir/Cabal $dir || return 1
      mv $srcdir/users_guide $dir || return 1
}
