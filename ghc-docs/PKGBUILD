#maintainer: Your Name <youremail at domain dot com>

pkgname=ghc-docs
pkgver=7.0.3
pkgrel=1
pkgdesc="Documents for the Glasgow Haskell Compiler"
arch=(any)
url="http://haskell.org/haskellwiki/GHC"
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=$pkgname.install
source=(index.html
        http://www.haskell.org/ghc/docs/$pkgver/Cabal.html.tar.bz2
        http://www.haskell.org/ghc/docs/$pkgver/libraries.html.tar.bz2
        http://www.haskell.org/ghc/docs/$pkgver/users_guide.html.tar.bz2
        )
noextract=()

build() {
  sed -i -e "s/\"libraries\/ghc-.*\"/\"libraries\/ghc-$pkgver\/index\.html\"/g" $srcdir/index.html || return 1
}

package() {
      cd $srcdir
      install -Dm 644 $srcdir/index.html $pkgdir/usr/share/doc/ghc/index.html || return 1
      mv $srcdir/Cabal $pkgdir/usr/share/doc/ghc/ || return 1
      mv $srcdir/users_guide $pkgdir/usr/share/doc/ghc/ || return 1
      mv $srcdir/libraries $pkgdir/usr/share/doc/ghc/ || return 1
}
md5sums=('a8bad4ee87a1f0802d8c9321a7bd4b14'
         '20e3fc3795c2e5e4a751aca87fa4c5be'
         '11bf9e1a114e1e2dd7269f0413cbaa90'
         'fcf53c87689b76523e8275cebd838b13')
