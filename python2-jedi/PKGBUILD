pkgname=python2-jedi
pkgver=0.6.0
pkgrel=2
pkgdesc="Awesome autocompletion for python. Official PKGBUILD."
arch=('any')
url="https://github.com/davidhalter/jedi"
license=('LGPL3')
depends=('python2')
makedepends=('python2-distribute')
source=("http://pypi.python.org/packages/source/j/jedi/jedi-${pkgver}.tar.gz")
sha256sums=('0f16c4249111e375c6c63e2b79243f8764ec6bd085bc1b214ff1fa64a2b2474c')

package() {
  cd "$srcdir/jedi-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

