Subject: [PATCH] Always display editor text in LTR direction

---
 plugins/scintilla/scintilla/gtk/ScintillaGTK.cxx | 7 ++++++-
 1 file changed, 6 insertions(+), 1 deletion(-)

diff --git a/plugins/scintilla/scintilla/gtk/ScintillaGTK.cxx b/plugins/scintilla/scintilla/gtk/ScintillaGTK.cxx
index be007e7..26221cb 100644
--- a/plugins/scintilla/scintilla/gtk/ScintillaGTK.cxx
+++ b/plugins/scintilla/scintilla/gtk/ScintillaGTK.cxx
@@ -2985,7 +2985,12 @@ static void scintilla_init(ScintillaObject *sci) {
 }
 
 GtkWidget* scintilla_new() {
-	return GTK_WIDGET(g_object_new(scintilla_get_type(), NULL));
+	GtkWidget *widget;
+	
+	widget = GTK_WIDGET(g_object_new(scintilla_get_type(), NULL));
+	gtk_widget_set_direction(widget, GTK_TEXT_DIR_LTR);
+	
+	return widget;
 }
 
 void scintilla_set_id(ScintillaObject *sci, uptr_t id) {
