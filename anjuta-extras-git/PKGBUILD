# Maintainer: Yosef Or Boczko <yosefor3@walla.com>

_pkgname=anjuta-extras
pkgname=$_pkgname-git
pkgver=20130321
pkgrel=1
pkgdesc="Anjuta Integrated Development Environment extra plugins"
arch=('i686' 'x86_64')
license=('GPL')
depends=('anjuta')
makedepends=('intltool' 'gnome-doc-utils')
install=$_pkgname.install
url="http://www.anjuta.org/"
options=('!libtool' '!emptydirs')
source=('0001-Always-display-editor-text-in-LTR-direction.patch'
		'0001-Support-for-automake-1.13.patch')
md5sums=('fca60fc69b15cb09d0a33a601391dd51'
		  '1574203132222d0d3abbb059c7ff3a4b')
conflicts=('anjuta-extras')
replaces=('anjuta-extras')
provides=('anjuta-extras' 'anjuta-extras=3.7.4')

_gitroot=http://git.gnome.org/browse/anjuta-extras
_gitname=anjuta-extras

build() {
  cd $srcdir
  msg "Connecting to GIT server...."

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  
  patch -Np1 -i ../../0001-Always-display-editor-text-in-LTR-direction.patch
  patch -Np1 -i ../../0001-Support-for-automake-1.13.patch
  
  ./autogen.sh --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir" install
  rm -rf "$srcdir/$_gitname-build"
}
