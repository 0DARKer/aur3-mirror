# Maintainer: Yosef Or Boczko <yoseforb@gmail.com>

_pkgname=anjuta-extras
pkgname=$_pkgname-git
pkgver=ANJUTA.EXTRAS.3.8.0.5.g7d1a249
pkgrel=1
_realver=3.9.1
pkgdesc="Anjuta Integrated Development Environment extra plugins"
arch=('i686' 'x86_64')
license=('GPL')
depends=('anjuta')
makedepends=('intltool' 'gnome-doc-utils')
install=$_pkgname.install
url="http://www.anjuta.org/"
options=('!libtool' '!emptydirs')
conflicts=('anjuta-extras')
replaces=('anjuta-extras')
provides=('anjuta-extras' "anjuta-extras=$_realver")
source=('git://git.gnome.org/anjuta-extras'
        '0001-Always-display-editor-text-in-LTR-direction.patch')
sha256sums=('SKIP'
            'd7968789d5469a506104a0048317751f49a597535d65172ef1c02dcdaa864f87')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe | sed 's/^v//;s/-/./g;s/_/./g;'
}

prepare() {
  cd "$srcdir/$_pkgname"
  patch -Np1 -i "$srcdir/0001-Always-display-editor-text-in-LTR-direction.patch"
}

build() {
  cd "$srcdir/$_pkgname"
  ./autogen.sh --prefix=/usr --sysconfdir=/etc \
    --localstatedir=/var --disable-static
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
