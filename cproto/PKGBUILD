
# Contributor: MIZUNO J.Y. <http://p.mjy.name/>
pkgname=cproto
pkgver=4.6
pkgrel=1
pkgdesc='A program that generates function prototypes and variable declarations from C source code'
arch=('i686' 'x86_64')
url='http://sourceforge.net/projects/cproto/'
license=('custom')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://jaist.dl.sourceforge.net/sourceforge/cproto/cproto-${pkgver}.tar.gz")
noextract=()
md5sums=('5968d18e9508b2892471e6ef16e140e3')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure "--prefix=$pkgdir/usr" || return 1
  make || return 1
  make install || return 1
  install -d "$pkgdir/usr/share/licenses/$pkgname"
  install -m ugo+r README "$pkgdir/usr/share/licenses/$pkgname/"
}

