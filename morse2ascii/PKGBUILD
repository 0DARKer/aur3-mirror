# Maintainer: Dominik George <nik@naturalnet.de>

pkgname=morse2ascii
pkgver=0.1a
pkgrel=1
pkgdesc="experimental tool which decodes the morse codes from a PCM WAV file using a volume/peak based method"
arch=('i686' 'x86_64')
url="http://aluigi.org/mytoolz.htm"
license=('GPL')

# I had to re-upload the file because upstream blocks curl/wget
source=("http://shore.naturalnet.de/~nik/${pkgname}.zip")
md5sums=("75ac25018d55701cc25a99dd5000a92f")

noextract=("${pkgname}.zip")
makedepends=("unzip")

build() {
 cd "${srcdir}"
 unzip "${startdir}/${pkgname}.zip"

 patch -p0 <"${startdir}/01-free-segfault.patch"

 make
}

package() {
 cd "${srcdir}"
 make PREFIX="${pkgdir}/usr" install
}
