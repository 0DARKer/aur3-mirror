# Maintainer: Clemens Novak <clemens@familie-novak.net>

_pkgname=qucs
pkgname=$_pkgname-git
pkgver=201304
pkgrel=1
pkgdesc="An integrated circuit simulator with a graphical user interface. (qt4 svn version)"
arch=('i686' 'x86_64')
url="http://qucs.sourceforge.net"
license=('GPL')
depends=('qt4')
optdepends=('freehdl: to permit digital circuit simulation'
	    'asco: to enable circuit optimization'
	    'perl')
makedepends=('git' 'autoconf' 'automake')
conflicts=($_pkgname)
md5sums=('SKIP')

build() {
  git clone git://git.code.sf.net/p/qucs/git qucs
  cd qucs/qucs/
  ./configure --prefix=/usr --enable-maintainer-mode
  make
  make install
  cd ..

  cd qucs/qucs-core/
  ./configure --prefix=/usr --enable-maintainer-mode
  make
  make install
  cd ..

}