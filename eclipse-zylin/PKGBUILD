pkgname=eclipse-zylin
pkgver=4.18.1
pkgrel=1
pkgdesc="Zylin Embedded CDT Plugin"
arch=('any')
url="http://sourceforge.net/projects/gnuarmeclipse"
install="eclipse-zylin.install"
license=("GPL")
depends=('eclipse' 'eclipse-cdt')
source=("http://huzuyi.info/aur/$pkgname-src-${pkgver}.tar.gz")
md5sums=('c971db6b726d7160f519e46fa329507c')
 
package() {
  _dest="${pkgdir}/usr/share/eclipse/dropins/zylin/eclipse"
 
  cd "${srcdir}"
  mkdir -p "$_dest"
  # Features
  cp -r features $_dest 
  # Plugins
  cp -r plugins  $_dest
}
