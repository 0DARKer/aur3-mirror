# 
# 
pkgname=runt
pkgver=0.1.2
pkgrel=2
pkgdesc="an alternative to aurphan designed with orphan hunting in mind (orphan hunting is the task of determining whether a given package has or does not have a maintainer)"
arch=('any')
url="https://bitbucket.org/hav3lock/pub_rel/src"
license=('GPL3')
depends=('aura' 'ruby')
source=("$pkgname-${pkgver}.tar.gz")
md5sums=('8c7c45416267a97e43e4be97b8b53993')

package() {

    cd $srcdir/$pkgname-$pkgver/ 
    for files in ${pkgname}.rb
    do
	install -D -m 755 $files $pkgdir/usr/bin/$pkgname
    done
    for files in $(ls docs/)
    do
	install -d $pkgdir/usr/share/doc/$pkgname
	install -m 644 -t $pkgdir/usr/share/doc/$pkgname docs/$files
    done 
}
