pkgname=libdockapp
pkgver=0.6.2
pkgrel=1
pkgdesc="library needed by wmnetload and some other windowmaker applets"
arch=('i686' 'x86_64')
url="http://solfertje.student.utwente.nl/~dalroi/libdockapp/"
license=MIT/X
arch=('i686' 'x86_64')
depends=('libxpm')
source=(http://solfertje.student.utwente.nl/~dalroi/libdockapp/files/$pkgname-$pkgver.tar.bz2)
md5sums=('05a9a5f295d956397e6bb53bad3a0322')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg SHAREDIR=$startdir/pkg/usr/share install
}
