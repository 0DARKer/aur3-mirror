pkgname=grooveoff
pkgver=0.1.6
pkgrel=1
pkgdesc="Offline Grooveshark.com music."
arch=('i686' 'x86_64')
url=('http://gcala.blogspot.com/2013/04/presenting-grooveoff.html')
license=('GPL')
depends=('qt4' 'phonon' 'qjson' 'gstreamer0.10-ugly-plugins' 'ca-certificates')
makedepends=('cmake' 'automoc4')
source=("http://qt-apps.org/CONTENT/content-files/158258-$pkgname-$pkgver.tar.gz")
 
md5sums=('1051d5111e33ed0b3e5e0a4c6f9d913f')
 
package() {
    cd "$srcdir/$pkgname-$pkgver"
    mkdir build
    cd build
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr
    make
    make DESTDIR="$pkgdir" install
} 