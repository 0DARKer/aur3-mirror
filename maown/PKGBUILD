#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=maown
pkgver=2012.6.27.1
pkgrel=1
pkgdesc='Monitor a shared directory and automatically adjust file ownership and permissions.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/maown"
source=(
  http://xyne.archlinux.ca/projects/maown/archives/maown-2012.6.27.1.tar.xz
  http://xyne.archlinux.ca/projects/maown/archives/maown-2012.6.27.1.tar.xz.sig
)
sha512sums=(
  e1abb41987a8cccf9d9174d040bc46483da0a66f6ab0ec3df5ec1366fc6dfcf431cc525f991e5317fc9f23a4b9c3c5c3fddc8540a43a4ca34468eafcd23cc5c4
  4484ecfff969dfb1680936ad03ac371c3b0dd7c1112dff2b9a58137479d76f97ea01d6f264a328d2b14d486406bfc1aab5dc0c812dee091fabc17372b25a8f1b
)
md5sums=(
  2e01f9fb8d16bcbf772793dc0b01cb73
  9376ba855fd899d86de2567019ecccc9
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
  install -D -m755 "${pkgname}d" "$pkgdir/etc/rc.d/${pkgname}d";
  install -Dm644 "${pkgname}d.conf" "${pkgdir}/etc/${pkgname}d.conf"
  install -Dm644 "man/${pkgname}.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}.1.gz"
  install -Dm644 "man/${pkgname}d.conf.5.gz" "${pkgdir}/usr/share/man/man5/${pkgname}d.conf.5.gz"
}

