#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=maown
pkgver=2012.6
pkgrel=1
pkgdesc='Monitor a shared directory and automatically adjust file ownership and permissions.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/maown"
source=(
  http://xyne.archlinux.ca/projects/maown/archives/maown-2012.6.tar.xz
  http://xyne.archlinux.ca/projects/maown/archives/maown-2012.6.tar.xz.sig
)
sha512sums=(
  bc39076dc84071f37350c75292bfe9a467d0c3a3c5811f0f6b5c7ea370abdfa5278eced686849a127e13865ab654916a5aca5ba817cf5c3e3d5e47fb43cd5852
  333909129c6dc875456f6688399ae078e56f6b8255bb51ebf83bde1c1b602d943f68052ed31c73498f8d1ce04d7535b9bdc82edc3de6ebba43fe7de9a1cdf745
)
md5sums=(
  299c03bbcfa352258557a230e30d77e7
  8a80441d0116667f452ee6f66370b372
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
  install -D -m755 "${pkgname}d" "$pkgdir/etc/rc.d/${pkgname}d";
  install -Dm644 "${pkgname}d.conf" "${pkgdir}/etc/${pkgname}d.conf"
  install -Dm644 "man/${pkgname}.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}.1.gz"
  install -Dm644 "man/${pkgname}d.conf.5.gz" "${pkgdir}/usr/share/man/man5/${pkgname}d.conf.5.gz"
}

