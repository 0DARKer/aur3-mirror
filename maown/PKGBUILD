#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=maown
pkgver=2012.9
pkgrel=1
pkgdesc='Monitor a shared directory and automatically adjust file ownership and permissions.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/maown"
source=(
  http://xyne.archlinux.ca/projects/maown/archives/maown-2012.9.tar.xz
  http://xyne.archlinux.ca/projects/maown/archives/maown-2012.9.tar.xz.sig
)
sha512sums=(
  6a7ad218d2340b44d03ae877128f6d67577a2ffa8df386274f40804b753209dc8557ebe88ae247ec9d7d376a9cb17e9ccde44cb2ad9407aed734bef70d2afbc3
  af19bf4084fcb2fb7ff1bd225f16d5133fe84b2564a7dff9d4718a9038f63b1598052bfaa1c19769d0a88b6406ec82cdcf1c08416eeebe866c3c31f839d0f65f
)
md5sums=(
  987acb51644c3633923cbe45778184ac
  a548f314082a0923b2c2461f89f6128b
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -o "$pkgname" "$pkgname.c"
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
  install -D -m755 "${pkgname}d" "$pkgdir/etc/rc.d/${pkgname}d";
  install -Dm644 "${pkgname}d.conf" "${pkgdir}/etc/${pkgname}d.conf"
  install -Dm644 "man/${pkgname}.1.gz" "${pkgdir}/usr/share/man/man1/${pkgname}.1.gz"
  install -Dm644 "man/${pkgname}d.conf.5.gz" "${pkgdir}/usr/share/man/man5/${pkgname}d.conf.5.gz"
}

