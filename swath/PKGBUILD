pkgname=swath
pkgver=0.4.0
pkgrel=3
pkgdesc="SWATH (Smart Word Analysis for THai) is a word segmentation for Thai language"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gcc-libs' 'libdatrie>=0.2.1')
groups=('texlive-lang')
source=(ftp://linux.thai.net/pub/thailinux/software/swath/$pkgname-$pkgver.tar.gz)
url="http://linux.thai.net/taxonomy/term/4"
md5sums=('8eda018009e123c87194090d65c7bbf1')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

