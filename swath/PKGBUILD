# Contributor: Smith Dhumbumroong <zodmaner at gmail dot com>

pkgname=swath
pkgver=0.4.1
pkgrel=1
pkgdesc="A word segmentation utility for Thai language"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gcc-libs' 'libdatrie>=0.2.1')
groups=('texlive-lang')
source=(ftp://linux.thai.net/pub/thailinux/software/swath/$pkgname-$pkgver.tar.gz)
url="http://linux.thai.net/taxonomy/term/4"
md5sums=('9118b565819c5a62af060cf51a231419')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR=$pkgdir install || return 1
}

# vim:set ts=2 sw=2 et:
