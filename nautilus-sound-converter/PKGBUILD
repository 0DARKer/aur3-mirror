# Maintainer: Michael Kogan <michael dot kogan at gmx dot net>

pkgname=nautilus-sound-converter
pkgver=1.0.6
pkgrel=1
pkgdesc="Nautilus extension to convert audio files"
url="http://code.google.com/p/nautilus-sound-converter/"
license=('GPL2')
depends=('nautilus' 'gstreamer0.10' 'gnome-media' 'gconf')
makedepends=('intltool')
source=(http://nautilus-sound-converter.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
arch=('i686' 'x86_64')
md5sums=('1b49053b1dd905e2aca5709dbe75f30f')
sha1sums=('a405fc8f4a7db90813494d65863e6f3b516c8afe')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
