# Maintainer: Alessandro Nakamuta <alessandro dot ufms at gmail dot com>

pkgname=rabbitvcs-nautilus
pkgver=0.15.0.2
pkgrel=1
pkgdesc="Nautilus front-end for RabbitVCS"
arch=('i686' 'x86_64')
url="http://rabbitvcs.org/"
install=$pkgname.install
depends=('nautilus>=3.0.0' 'python-nautilus>=1.0.0' 'dbus-python>0.80' 'rabbitvcs>=0.15.0.2')
#makedepends=()
#backup=()
license=('GPL')
source=(http://rabbitvcs.googlecode.com/files/rabbitvcs-$pkgver.tar.bz2)
md5sums=('08102bd65f17fe3b4765bb1746a80609')
build(){
	cd "$srcdir/rabbitvcs-15.0.2/clients/nautilus-3.0"	
	mkdir -p "$pkgdir/usr/share/nautilus-python/extensions/"
	cp RabbitVCS.py "$pkgdir/usr/share/nautilus-python/extensions/"
}
