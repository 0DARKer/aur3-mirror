# Maintainer: Jan Fader <jan.fader@web.de>
pkgname=jameica
pkgver=1.10
pkgrel=5
pkgdesc="Jameica is a JAVA GUI framework basing on SWT"
arch=('i686' 'x86_64')
url="http://www.willuhn.de/projects/jameica/"
license=("GPL")
depends=('java-runtime>=1.5' 'swt')
makedepends=('unzip')
if [ "$CARCH" = "i686" ]; then
  source=(http://www.willuhn.de/projects/jameica/releases/$pkgver/jameica/$pkgname-linux.zip)
  md5sums=('88b95133ac4f4ce527f68b0f361116ba')
elif [ "$CARCH" = "x86_64" ]; then
  source=(http://www.willuhn.de/projects/jameica/releases/$pkgver/jameica/$pkgname-linux64.zip)
  md5sums=('550418fa7926b6dfaf7668191d725260')
fi

build() {
  mkdir -p $pkgdir/{usr/bin,opt}
  cd $srcdir/jameica
  sed -i '6c cd /opt/jameica' jameica.sh jameicaserver.sh
  sed -i '10 s/lib\/swt\/linux/\/usr\/lib/' jameica.sh jameicaserver.sh
  sed -i '10 s/$@/& \&> \/dev\/null \&/' jameica.sh jameicaserver.sh
  sed -i '/^cd `dirname/d' jameica.sh jameicaserver.sh
  install -m755 jameica.sh $pkgdir/usr/bin/jameica
  install -m755 jameicaserver.sh $pkgdir/usr/bin/jameicaserver
# Refactoring swt dependency.
  cd $srcdir/jameica/lib/swt
  rm -rf linux && ln -s /usr/share/java linux
  cd $srcdir
  cp -r jameica $pkgdir/opt/
  find $pkgdir/opt/jameica -type f -exec chmod 644 {} +
}
