# Contributor: Tusooa Zhu <tusooa@gmail.com>
pkgname=bsdmainutils
pkgver=8.2.2
pkgrel=4
pkgdesc="Some BSD-style programs."
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/natty/bsdmainutils"
license=('GPL')
depends=()
makedepends=(make)
source=(http://archive.ubuntu.com/ubuntu/pool/main/b/$pkgname/${pkgname}_$pkgver.tar.gz
archlinux-ncal.diff)

build()
{
cd "$srcdir/$pkgname-$pkgver"
msg "Starting make..."
for i in debian/patches/* ; do patch -Np1 < "$i" ; done || return 1
patch -Np1 < ../../archlinux-ncal.diff || return 1
for i in col colcrt colrm column hexdump look ul ; do rm -rf usr.bin/"$i" ; done || return 1
make &&
make DESTDIR="$pkgdir" install || return 1
}


md5sums=('e884ca823d4d04efa1de596446ecb65f'
         'b2934a2c01150397738e4f9a62b1786c')
