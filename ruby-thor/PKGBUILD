# Contributor: Gigamo <gigamo@gmail.com>
# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-thor
pkgver=0.14.6
pkgrel=2
pkgdesc="A scripting framework that replaces rake, sake and rubigen."
arch=(any)
url="http://github.com/wycats/thor"
license=('MIT')
depends=('ruby')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/thor-$pkgver.gem)
noextract=(thor-$pkgver.gem)
md5sums=('d52dcc3cc08a2e6443bba665c2123a59')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" thor-$pkgver.gem
  
  mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
