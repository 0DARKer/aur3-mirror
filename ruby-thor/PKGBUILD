# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-thor
_gemname=${pkgname#ruby-}
pkgver=0.14.6
pkgrel=2
pkgdesc="A scripting framework that replaces rake, sake and rubigen."
arch=('any')
url="http://github.com/wycats/thor"
license=('MIT')
depends=('ruby' 'rubygems')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('d52dcc3cc08a2e6443bba665c2123a59')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${_gemname}-${pkgver}.gem
}
