pkgname=nautilussvn
pkgver=0.12beta1.2
_version=0.12
_betaver=beta1-2
pkgrel=1
pkgdesc="A Python extension for Nautilus which integrates a load of Subversion functionality into the GNOME Nautilus file manager"
arch=('i686' 'x86_64')
url="http://code.google.com/p/nautilussvn/"
install=${pkgname}.install
depends=('python-nautilus' 'python-configobj' 'pygtk' 'pysvn' 'subversion' 'meld')
#makedepends=()
#backup=()
license=('GPL')
source=(http://nautilussvn.googlecode.com/files/nautilussvn_${_version}-${_betaver}.tar.gz)
md5sums=('1cd6f9d28bfadfe9a6455a9b0a50c9ab')

build(){
	cd ${startdir}/src/${pkgname}-${_version} || return 1
	python setup.py install --root=$pkgdir || return 1
	
}
