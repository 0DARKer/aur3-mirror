post_install() {
  if ! [ `grep '/opt/kde4/lib' etc/ld.so.conf` ]; then
    echo "/opt/kde4/lib" >> etc/ld.so.conf
    sbin/ldconfig -r .
  fi
}

post_upgrade() {
  /bin/true
}

pre_remove() {
  cat etc/ld.so.conf | grep -v '/opt/kde4/lib' >/tmp/.packde
  mv /tmp/.packde etc/ld.so.conf
  chmod 644 etc/ld.so.conf
  sbin/ldconfig -r .
}

op=$1
shift

$op $*
