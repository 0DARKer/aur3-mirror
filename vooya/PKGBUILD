pkgname=vooya
pkgver=0.9.1
pkgrel=1
pkgdesc="Raw YUV/RGB Video Player."
arch=('i686' 'x86_64')
url="http://www.offminor.de/"
license=('GPL')
depends=('qt4')
options=('!docs')

if [ "${CARCH}" = 'x86_64' ]; then
  source=(http://www.offminor.de/?file=files/vooya/vooya-0.9-amd64.deb)
  md5sums=('93154d357c5e2eafa566e4ce9a0eae7b')
elif [ "${CARCH}" = 'i686' ]; then 
  source=(http://www.offminor.de/?file=files/vooya/vooya-0.9-i386.deb)
  md5sums=('9ed7881c191d4e6c3f1cc1450312fb21')
fi

package() {
  # Extract .deb
  bsdtar xf $pkgname*
  bsdtar xf data.tar.gz -C $pkgdir
}