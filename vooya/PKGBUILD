# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=vooya
pkgver=0.2.1
pkgrel=1
pkgdesc="Vooya is a player for raw (uncompressed and containerless) YUV and RGB video data, most commonly used in scientific environments."
arch=('i686' 'x86_64')
url="http://www.offminor.de/"
license=('GPL')
depends=('gtk2' 'libjpeg6' 'libpng12' 'libsm' 'libtiff4')
options=('!docs')

if [ "${CARCH}" = 'x86_64' ]; then
  source=(http://www.offminor.de/beyond/vooya/vooya-0.2-amd64.deb)
  md5sums=('91cc5d5a70115bef139df029ddaea5a2')
elif  [ "${CARCH}" = 'i686' ]; then 
  source=(http://www.offminor.de/beyond/vooya/vooya-0.2-i368.deb)
  md5sums=('ff11097540f098649a6c0f9f05e311af')
fi

package() {

   # Extract .deb
   bsdtar xf $pkgname*
   bsdtar xf data.tar.gz -C $pkgdir
}