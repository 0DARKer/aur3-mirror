# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=vooya
pkgver=0.7.1
pkgrel=1
pkgdesc="Vooya is a player for raw (uncompressed and containerless) YUV and RGB video data, most commonly used in scientific environments."
arch=('i686' 'x86_64')
url="http://www.offminor.de/"
license=('GPL')
depends=('qt4')
options=('!docs')

if [ "${CARCH}" = 'x86_64' ]; then
  source=(http://www.offminor.de/?file=files/vooya/vooya-0.7-amd64.deb)
  md5sums=('10293545042396b2485e388724ef4739')
elif [ "${CARCH}" = 'i686' ]; then 
  source=(http://www.offminor.de/?file=files/vooya/vooya-0.7-i386.deb)
  md5sums=('04682eac1fc83be964e23b6098cbef7f')
fi

package() {

  # Extract .deb
  bsdtar xf $pkgname*
  bsdtar xf data.tar.gz -C $pkgdir
}