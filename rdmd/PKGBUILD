# Maintainer: Josh Netterfield <joshua@nettek.ca>
pkgname=rdmd
pkgver=7baceaaae
pkgrel=1
pkgdesc="Builds (with dependants) and runs a D program."
url="http://www.dlang.org"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('dmd' 'libphobos-devel')
makedepends=()
conflicts=()
replaces=()
backup=()
install=''
source=("https://raw2.github.com/D-Programming-Language/tools/7baceaaae5200cd7bd2e7ac6dd470264cdbf4b69/rdmd.d")
md5sums=('d282b7e1f40aa90b259d9412f2ff8abb')

build() {
  cd "${srcdir}"
  dmd ../rdmd.d
}

package() {
  cd "${srcdir}"
  install -Dm755 rdmd "$pkgdir/bin/rdmd"
}

# vim:set ts=2 sw=2 et:
