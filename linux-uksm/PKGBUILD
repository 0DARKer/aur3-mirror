pkgname=linux-uksm
true && pkgname=(linux-uksm linux-uksm-headers)
_kernelname=-uksm
_basekernel=3.4
pkgver=${_basekernel}.1
pkgrel=1
arch=('i686' 'x86_64')
url="http://kerneldedup.org/"
license=('GPL2')
options=('!strip')
_ckpatchversion=1
_ckpatchname="patch-${_basekernel}${_ckpatchversion}"
_uksmname="v3.4.ge.0"
source=(
      "http://www.kernel.org/pub/linux/kernel/v3.x/linux-${_basekernel}.tar.xz"
      "http://www.kernel.org/pub/linux/kernel/v3.x/patch-${pkgver}.xz"
      'linux-uksm.preset'
      'config'
      'config.x86_64'
      'change-default-console-loglevel.patch'
      'i915-fix-ghost-tv-output.patch'
      'fix-acerhdf-1810T-bios.patch'
      "http://kerneldedup.org/download/uksm/0.1.1.1/patches/uksm-0.1.1.1-for-${_uksmname}.patch"
      "http://kerneldedup.org/download/uksm/0.1.1.1/patches/0001-UKSM-update-anon_page-counter-when-a-anon_page-remap.patch"
      "http://kerneldedup.org/download/uksm/0.1.1.1/patches/0002-UKSM-add-VM_MERGEABLE-to-vm_flags-before-vma_merge.patch"
      "http://kerneldedup.org/download/uksm/0.1.1.1/patches/0003-UKSM-Missing-text-info-in-vmstat_text.patch"
       )

