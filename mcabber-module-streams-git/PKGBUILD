# Contributor: Nickolay Stepanenko <nixtrian at gmail dot com>
pkgname="mcabber-module-streams-git"
pkgver=20100319
pkgrel=1
pkgdesc="IBB and in-bound bytestreams transfer method implementation. It supports IBB native session initiation and sending/receiving files this way."
url="http://wiki.mcabber.com/index.php/Modules"
license=(GPL)
arch=('i686' 'x86_64')
depends=('mcabber-hg' 'libasyncns' 'mcabber-module-disco-git')
makedepends=("cmake" "git" "mcabber-hg")

_gitroot="http://isbear.unixzone.org.ua/source/mcabber-streams"
_gitname="mcabber-streams"

build() {
	cd $srcdir

   msg "Connecting to $_gitroot ..."
	if [ -d $srcdir/$_gitname ] ; then
		cd $_gitname && git pull
		msg "The local files are updated."
	  else
		git clone $_gitroot
	fi
	
   msg "GIT checkout done or server timeout"
   
	cp -rf $srcdir/$_gitname $srcdir/$_gitname-build
	


   msg "Building $pkgname ..."
	cd $srcdir/$_gitname-build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make || return 1
	DESTDIR=$pkgdir make install

	rm -r $srcdir/$_gitname-build
}
