# Maintainer: dorphell <dorphell@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=samplicator
pkgver=1.3.2
pkgrel=1
pkgdesc="UDP Samplicator receives UDP datagrams on a given port and resends those datagrams to a specified set of receivers"
arch=(i686 x86_64)
license=('GPL2')
source=(http://www.switch.ch/network/downloads/tf-tant/samplicator/old/$pkgname-$pkgver.tar.gz)
md5sums=('39f0999db9082beecb371a2ec720f56e')
url="http://www.switch.ch/tf-tant/floma/sw/samplicator/"

build() {
cd $startdir/src/$pkgname-$pkgver
./configure --prefix=/usr
make || return 1
make prefix=$startdir/pkg/usr install
}
