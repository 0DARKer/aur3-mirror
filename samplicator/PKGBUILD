pkgname=samplicator
pkgver=1.3.6
pkgrel=1
pkgdesc="An UDP datagrams receiver and forwarder with option to spoof the source IP address"
arch=(i686 x86_64)
url='http://code.google.com/p/samplicator/'
license=('GPL2')
depends=(glibc)
makedepends=()
source=("http://samplicator.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
md5sums=('8924d7de9bad725e898a0f40e0497e1f')
sha512sums=('a4023344ec911d3dc6992ddce139e6f1c86a67bd9948a3f92a995dc26aeda1753becea4b0f5d9ad45a06d628029bffc0a77c28fbd277da9faf42100c01d55f31')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
