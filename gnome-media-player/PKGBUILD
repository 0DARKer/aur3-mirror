# Contributor: pumbur <free@pumbur.net>

pkgname=gnome-media-player
pkgvar=default
pkgver=0.1.3
pkgrel=1
arch=('i686' 'x86_64')
install=$pkgname.install
pkgdesc="Gnome Media Player"
url="https://launchpad.net/gnome-media-player"
license=('GPL')
depends=('vlc')
makedepends=('intltool' 'xine-lib' )
optdepends=('gstreamer0.10')

case $pkgvar in
  default)
    source=(http://launchpad.net/gnome-media-player/0.1/$pkgver/+download/$pkgname-$pkgver.tar.gz)
    md5sums=('8abf61f7a2c131be6b4ea334a747ad9d')
    build() {
      cd $srcdir/$pkgname-$pkgver
      ./configure --prefix=/usr
      make || return 1
      make DESTDIR=$pkgdir install || return 1
    }
  ;;
  bzr)
    source=()
    md5sums=()
    build(){
      bzr branch lp:$pkgname
      cd ./$pkgname
      ./autogen.sh --prefix=/usr
      make || return 1
      make DESTDIR="$pkgdir/" install
    }
esac



