# Contributor: mariusz - myswiat <my.swiat@o2.pl>

_pkgname=gvfs
pkgname=$_pkgname-git
pkgver=20120915
pkgrel=1
pkgdesc="Virtual filesystem implementation for gio"
arch=(i686 x86_64)
url=http://gnome.org/
license=(LGPL)
depends=(avahi dconf fuse glib2-git libarchive libcdio libsoup-gnome udisks2)
makedepends=(git gtk-doc)
options=(!libtool)
provides=($_pkgname=1.12)
conflicts=($_pkgname)

_gitroot=http://git.gnome.org/browse/gvfs
_gitname=$_pkgname

build() {
    cd "$srcdir"
    msg "Connecting to git.gnome.org GIT server...."
    if [[ -d $_gitname/.git ]] ; then
        pushd $_gitname && git pull origin
        msg "The local files are updated."
        popd
    else
        git clone $_gitroot
    fi
    msg "GIT checkout done or server timeout"

    rm -rf $_gitname-build/
    cp -r $_gitname/ $_gitname-build/
    cd $_gitname-build/

    msg "Starting build..."
    ./autogen.sh -prefix=/usr
    make
}

package() {
    cd "$srcdir"/$_gitname-build/
    make DESTDIR="$pkgdir" install
}
