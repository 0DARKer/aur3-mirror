# Maintainer: Christian Sturm <reezer@reezer.org>
# Contributor: Justin Davis <jrcd83@gmail.com>

pkgname='perl-moo'
pkgver='0.091009'
pkgrel='1'
pkgdesc="Minimalist Object Orientation (with Moose compatiblity)"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-class-method-modifiers>=1.07' 'perl-devel-globaldestruction' 'perl-module-runtime' 'perl-role-tiny' 'perl-strictures>=1.001001')
makedepends=('perl-test-fatal>=0.003')
url='https://metacpan.org/release/Moo'
source=("http://cpan.metacpan.org/authors/id/M/MS/MSTROUT/Moo-${pkgver}.tar.gz")
md5sums=('dc269fe57d5376655d1eac8b874fdcd8')
sha512sums=('1f1f90b2201e0ace4b1399c17f74014a274314100eca68ad3d6ac889fc31e3f21247cb3eee13947cdec3b0a48830295b66ecef03b4e464de6cbafd81e91fec37')
_distdir="${srcdir}/Moo-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
