# Maintainer: Christian Sturm <reezer@reezer.org>
# Contributor: Justin Davis <jrcd83@gmail.com>

pkgname='perl-moo'
pkgver='0.091007'
pkgrel='1'
pkgdesc="Minimalist Object Orientation (with Moose compatiblity)"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-class-method-modifiers>=1.07' 'perl-devel-globaldestruction' 'perl-role-tiny' 'perl-strictures>=1.001001')
makedepends=('perl-test-fatal>=0.003')
url='https://metacpan.org/release/Moo'
source=("http://cpan.metacpan.org/authors/id/M/MS/MSTROUT/Moo-${pkgver}.tar.gz")
md5sums=('16d99b92097a18b19904fe0256469aa2')
sha512sums=('c825bc90642007000d7eb3b8dbc5b7e056b628b82f3f5ab2fc208048529ef4ae58a93f45413abb94d41316886eadf7f0447bd4f590d90723a9cd256f44144c8b')
_distdir="${srcdir}/Moo-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
