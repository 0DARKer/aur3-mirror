# Maintainer: Christian Sturm <reezer@reezer.org>
# Contributor: Justin Davis <jrcd83@gmail.com>

pkgname='perl-moo'
pkgver='0.091001'
pkgrel='1'
pkgdesc="Minimalist Object Orientation (with Moose compatiblity)"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-class-method-modifiers>=1.07' 'perl-devel-globaldestruction' 'perl-role-tiny' 'perl-strictures>=1.001001')
makedepends=('perl-test-fatal>=0.003')
url='https://metacpan.org/release/Moo'
source=("http://cpan.metacpan.org/authors/id/M/MS/MSTROUT/Moo-${pkgver}.tar.gz")
md5sums=('2aa93d4e098bd771d3945e24d1fa692b')
sha512sums=('51a0cecb65ba4078f668c35377637231f33bd2dc1030fd62ef73f10cd16bb69dc6d135b729bab7f9b58c8ce9f6489b237bb5c57927018ae6d2cbb8075ae7e932')
_distdir="${srcdir}/Moo-${pkgver}"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$_distdir"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
