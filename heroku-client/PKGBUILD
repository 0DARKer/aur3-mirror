# Contributor: Exiquio Cooper-Anderson <exiquio@gmail.com>
pkgname='heroku-client'
pkgver=2.33.0
pkgrel='1'
pkgdesc='The Heroku CLI is used to manage Heroku apps from the command line.'
arch=('i686' 'x86_64')
license=('MIT')
url='https://toolbelt.herokuapp.com/'
depends=('ruby')
source=('http://assets.heroku.com/heroku-client/heroku-client.tgz'
		'http://assets.foreman.io/foreman/foreman.tgz'
		'heroku-toolbelt.sh'
		)
md5sums=('d090d7bace080a289bcd2280c79f60b5'
		'7ce9560f855b259278b749a369685922'
		'd7f6ec758517e6ae2c9e008b0b106765'
)

package() {
  cd "$pkgdir"
  mkdir -p opt
  cp -a "$srcdir/$pkgname" "opt/$pkgname"
  chmod -R 755 opt/$pkgname

  cp -a "$srcdir/foreman" "opt/foreman"
  chmod -R 755 opt/foreman
  
  install -Dm755 "$srcdir/heroku-toolbelt.sh" etc/profile.d/heroku-toolbelt.sh
}
