pkgname='heroku-client'
pkgver='2.21.2'
pkgrel='1'
pkgdesc='The Heroku CLI is used to manage Heroku apps from the command line.'
arch=('i686' 'x86_64')
license=('MIT')
url='https://toolbelt.herokuapp.com/'
depends=('git' 'ruby')
source=('heroku-client.tgz')
md5sums=('55f82d2480dc001cc5005b3ece283b69')


package() {
	cd "$pkgdir"
	mkdir -p opt
	cp -a "$srcdir/$pkgname" "opt/$pkgname"
	# Fix broken permissions
	chmod -R o=g opt/$pkgname
}
