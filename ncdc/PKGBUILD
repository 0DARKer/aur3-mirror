# Maintainer: Yorhel <projects@yorhel.nl>
# Contributor: archtux <antonio.arias99999@gmail.com>

pkgname=ncdc
pkgver=1.8
pkgrel=1
pkgdesc='Lightweight Ncurses Direct Connect client'
arch=('i686' 'x86_64')
url='http://dev.yorhel.nl/ncdc'
license=('MIT')
makedepends=('gdbm')
depends=('bzip2' 'libxml2' 'ncurses' 'sqlite3' 'glib2>=2.28.0')
optdepends=('glib-networking: TLS support'
            'gdbm: To upgrade from pre-1.6')
source=(http://dev.yorhel.nl/download/ncdc-$pkgver.tar.gz)
md5sums=('a6da73159270b911415052bb35f5deec')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
  install -Dm644 COPYING $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
