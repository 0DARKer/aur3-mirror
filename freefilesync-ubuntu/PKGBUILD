pkgname=freefilesync-ubuntu
pkgver=5.17
pkgrel=1
pkgdesc="FreeFileSync Ubuntu, synchronize tool, version 5"
arch=('i686' x86_64)
url="http://sourceforge.net/projects/freefilesync/"
license=('GPLv3')
depends=(wxgtk boost)
conflicts=(freefilesync)
source=("http://downloads.sourceforge.net/project/freefilesync/freefilesync/v${pkgver}/FreeFileSync_${pkgver}_Source.zip" FreeFileSync.desktop)
md5sums=('0a53734a746b09f5258b4ea26f956050'
         'a8e1363f3b64244fe21184aa93f45506')

build () {
  cd ${srcdir}
  #sed -i 's/LINKFLAGS =$/LINKFLAGS = -lz/' Makefile
  make BUILD=Launchpad
  
  #cd RealtimeSync
  #make BUILD=Launchpad
  #make DESTDIR=${pkgdir} install 
}

package() {
  cd ${srcdir}
  make DESTDIR=${pkgdir} install
  install -Dm644 FreeFileSync.desktop $pkgdir/usr/share/applications/FreeFileSync.desktop 
  install -Dm644 FreeFileSync.desktop $pkgdir/usr/share/applications/FreeFileSync.desktop 
}
