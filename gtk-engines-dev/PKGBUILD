# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>

_pkg=gtk-engines
pkgname=gtk-engines-dev
pkgver=2.91.1
pkgrel=1
pkgdesc="Theme engines for GTK+ 3"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gtk3')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
provides=("${_pkg}=${pkgver}")
conflicts=("${_pkg}")
url="http://live.gnome.org/GnomeArt"
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkg}/2.91/${_pkg}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd "${_pkg}-${pkgver}"
  ./configure --prefix=/usr --enable-animation
  make
}

package() {
  cd "${_pkg}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
