# Maintainer: speps <speps at aur dot archlinux dot org>

_commit=1b72339
pkgname=sfarklib
pkgver=2.23_git
pkgrel=1
pkgdesc="Library for decompressing sfArk soundfonts."
arch=(i686 x86_64)
url="https://github.com/raboof/sfArkLib"
license=('GPL3')
source=("https://github.com/raboof/sfArkLib/tarball/$_commit")
md5sums=('1053f44a4392db3107b00705ee6e90b7')

build() {
  cd "$srcdir/raboof-"*
  make
}

package() {
  cd "$srcdir/raboof-"*

  # lib
  install -Dm755 libsfark.so \
    "$pkgdir/usr/lib/libsfark.so"

  # header
  install -Dm644 sfArkLib.h \
    "$pkgdir/usr/include/sfArkLib.h"
}

# vim:set ts=2 sw=2 et:
