# Contributor: Alexander RÃ¸dseth <rodseth@gmail.com>
pkgname=promoe-git
pkgver=20100810
pkgrel=1
pkgdesc="XMMS2 client that looks like Winamp Classic"
url="http://wiki.xmms2.xmms.se/wiki/Client:Promoe"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('xmms2' 'qt' 'avahi' 'boost' 'libarchive')
makedepends=('git' 'setconf' 'autoconf' 'make')
_gitroot="git://git.xmms.se/xmms2/promoe.git"
_gitname="promoe"

build() {
  cd "$srcdir"
  msg "Connecting to github.com GIT server...."
  if [ -d "$srcdir/$_gitname" ] ; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot"
  fi
  msg "GIT checkout done or server timeout"
  cd "$_gitname"

  msg "Configuring..."
  ./waf configure --prefix="$pkgdir/usr" || return 1

  msg "Building..."
  ./waf build || return 1
  ./waf install || return 1

  msg "Packaging..."
  install -Dm644 data/icon.png \
    "$pkgdir/usr/share/pixmaps/promoe.png" || return 1
  install -Dm644 COPYING \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING" || return 1
  mkdir "$pkgdir/usr/share/promoe"
  cp -r "data/skins" "$pkgdir/usr/share/promoe/skins"
} 

# vim:set ts=2 sw=2 et:
