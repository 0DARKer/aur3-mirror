# Maintainer: Никола Вукосављевић <hauzer@gmx.com>

_pkgname=lfm
_pypipkgname=${_pkgname}h
pkgname=python-${_pkgname}
pkgver=1.0.4
pkgrel=1
pkgdesc='A Last.fm API interface.'
arch=('any')
url='https://bitbucket.org/hauzer/${_pkgname}/'
license=('GPL')
groups=()
depends=('python' 'python-requests')
makedepends=('python-setuptools')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("https://pypi.python.org/packages/source/l/${_pypipkgname}/${_pypipkgname}-${pkgver}.tar.gz")
md5sums=('a93aa1c99807eb343ccd62965c20b56e')

package() {
  cd "${srcdir}/${_pypipkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}/" --optimize=1
}

