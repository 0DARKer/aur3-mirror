# Maintainer: Christophe Robin <crobin@php.net>

pkgname=minecraft-data
pkgver=latest
pkgrel=1
pkgdesc="Minecraft is a game about placing blocks while running from skeletons. Or something like that... ( Game resources )"
arch=(i686 x86_64)
license=('custom')
url="http://www.minecraft.net/"
depends=('minecraft')
source=(http://minecraft.bombstrike.org/resources.tar.bz2)
md5sums=('af36107fb7a15b783cc1563354f2a274')

build() {
    cd "$srcdir" || return 1

    mkdir -p $pkgdir/usr/share/minecraft-data
    # remove useless link to archive
    rm resources.tar.bz2
    # then copy resources
    cp -r * $pkgdir/usr/share/minecraft-data
}

# vim:set ts=4 sw=4 et:
