pkgname=python-pyramid-debugtoolbar
pkgver=1.0.3
pkgrel=1
pkgdesc='Interactive HTML debugger for Pyramid application development'
arch=('any')
url='http://pypi.python.org/pypi/pyramid_debugtoolbar'
license=('custom:BSD')
depends=('python' 'python-pyramid' 'python-pygments')
makedepends=('python-distribute')
source=(http://pypi.python.org/packages/source/p/pyramid_debugtoolbar/pyramid_debugtoolbar-${pkgver}.tar.gz)
md5sums=('67324e75a0b3ecf3fe1804ce82a430cb')

build() {
  cd $srcdir/pyramid_debugtoolbar-${pkgver}
  python setup.py install --root=$pkgdir/ --optimize=1
}
