pkgname=pidgin-gpg
pkgver=0.1
pkgrel=6
pkgdesc="A plugin that provides GPG encryption for Pidgin IM"
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/pidgin-gpg/"
license="GPL"
depends=('pidgin>=2.0' 'gnupg2>=2.0' 'gpgme>=1.0' 'gtk2>=2.0')
source=(http://mesh.dl.sourceforge.net/sourceforge/pidgin-gpg/$pkgname-$pkgver-beta.tar.gz Makefile)
md5sums=('f455e8c0caab017338e02ecacf511f6d' '26f4a56d27c3c809aa11daeda84d1b61')

build() {
  cd $srcdir/$pkgname
  cp -f $startdir/Makefile $srcdir/$pkgname/Makefile
  make || return 1
  make DESTDIR=$pkgdir install
  find $pkgdir -name '*.o' -exec rm {} \;	
}
