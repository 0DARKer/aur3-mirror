pkgname=atolm-gtk3
up_pkgname=Atolm-gtk3
pkgver=1.0
pkgrel=3
pkgdesc="Gtk3 Dark theme"
arch=(any)
license=('CCPL')
depends=('gtk3' 'gnome-themes-standard')
optdepends=('gtk-engine-equinox: quiet some gtk2 warnings')
url="http://thedeviantmars.deviantart.com/art/Atolm-gtk3-206663190"
source=(http://fc09.deviantart.net/fs71/f/2011/124/5/b/atolm_gtk3_by_thedeviantmars-d3f1ic6.zip)
md5sums=('4a3d9b7b022c63dd64a4970b108b07a5')

build() {
  cd "${srcdir}/"
  tar xvfz ${up_pkgname}.tar.gz
  sed -i 's/import url ("gtk-widgets.css")/import url("gtk-widgets.css")/' Atolm-gtk3/gtk-3.0/gtk.css
}

package() {
  install -d ${pkgdir}/usr/share/themes
  cp -r ${up_pkgname} ${pkgdir}/usr/share/themes
}
