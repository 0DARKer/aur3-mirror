# $Id$
# Maintainer: Jan Kròávek <wamba@centrum.cz>
pkgname=voice-czech-ph
pkgver=0.1
pkgrel=1
pkgdesc="Czech diphone database for Festival. (Czech voice)"
url="http://www.freebsoft.org/festival-czech-diphone-database"
license=""
depends=('festival')
makedepends=()
conflicts=()
replaces=()
backup=()
install=voice-czech-ph.install
source=(http://www.freebsoft.org/pub/projects/festival-czech-diphone-database/$pkgname-bin-$pkgver.tar.gz)
md5sums=('7640a284577bcfa600fe931355982fd1')

build() {
  cd $startdir/src/$pkgname-bin-$pkgver
install -d $startdir/pkg/usr/share/festival/voices/czech/czech_ph
install -d $startdir/pkg/usr/share/festival/voices/czech/czech_ph/festvox
install -m 644 festvox/czech_ph.scm $startdir/pkg/usr/share/festival/voices/czech/czech_ph/festvox/
install -d $startdir/pkg/usr/share/festival/voices/czech/czech_ph/group
install -m 644 group/ph.group $startdir/pkg/usr/share/festival/voices/czech/czech_ph/group/
}