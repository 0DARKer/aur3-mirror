pkgname=detourious-svn
pkgver=70702
pkgrel=1
pkgdesc="Detourious theme for E17 (with support for GTK2/GTK3)"
arch=('i686' 'x86_64')
url="https://code.launchpad.net/~hannes-janetzek/enlightenment-svn/detourious-theme"
license=('GPL')
depends=()
makedepends=('svn')
source=()
md5sums=()

_svntrunk="http://svn.enlightenment.org/svn/e/trunk/THEMES/detourious/"
_svnmod="Detourious"

build() {
  cd $startdir/src
  msg "Connecting to SVN server...."
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  svn export $_svnmod $_svnmod-build
  cd $_svnmod-build
  #
  # BUILD
  #
  make
}

package() {
    mkdir -p $pkgdir/usr/share/themes/Detourious
    cd $srcdir/Detourious/gtk/detourious/
    mv gtk-2.0 $pkgdir/usr/share/themes/Detourious ; mv gtk-3.0 $pkgdir/usr/share/themes/Detourious
    mkdir -p $pkgdir/usr/share/enlightenment/data/themes
    cd $srcdir/Detourious-build/
    mv detourious.edj $pkgdir/usr/share/enlightenment/data/themes/ ; mv detourious-dark.edj $pkgdir/usr/share/enlightenment/data/themes/ ; mv detourious-elm.edj $pkgdir/usr/share/enlightenment/data/themes/ ; mv detourious-illume.edj $pkgdir/usr/share/enlightenment/data/themes/
}