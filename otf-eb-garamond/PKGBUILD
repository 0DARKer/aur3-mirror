# Maintainer: OmeGa <omg@vmail.me>

pkgname=otf-eb-garamond
pkgver=0.014e
pkgrel=1
pkgdesc="Digitization of the Garamond shown on the Egenolff-Berner specimen."
arch=('any')
url="http://www.georgduffner.at/ebgaramond/"
license=('custom:OFL')
depends=('fontconfig' 'xorg-font-utils')
source=(EBGaramond-${pkgver}.zip::https://github.com/downloads/georgd/EB-Garamond/EBGaramond-${pkgver}.zip)
sha1sums=('e8ec79e3c49ec9438b72b3aacbbd824edffbcc04')

install=otf.install

package() {
  # Fonts
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond08-Regular.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond08-SC.otf        ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond12-AllSC.otf     ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond12-Italic.otf    ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond12-Regular.otf   ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond08-SC.otf        ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond-Initials.otf    ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond-InitialsF1.otf  ${pkgdir}/usr/share/fonts/TTF
  install -m644 ${srcdir}/EBGaramond-${pkgver}/otf/EBGaramond-InitialsF2.otf  ${pkgdir}/usr/share/fonts/TTF

  # License
  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 ${srcdir}/EBGaramond-${pkgver}/COPYING      ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
