# Contributor: Sergio Montesinos <sermonpe@yahoo.es>
pkgname=getcaledonia
pkgver=preview2
pkgrel=1
pkgdesc="Universal and beautiful installer for Caledonia art suite."
url="http://kde-apps.org/content/show.php/getCaledonia?content=148568"
arch=('i686' 'x86_64')
license="GPL"
depends=('kdebase-workspace')
makedepends=('qt')

source=(http://sourceforge.net/projects/getcaledonia/files/getCaledonia-$pkgver.tar.gz)
md5sums=(0895959b76506dbcc1725116b40594da)

build() {
  cd "${srcdir}/getCaledonia-${pkgver}"
  qmake PREFIX=/usr
  make
}
 
package() {
  cd "${srcdir}/getCaledonia-${pkgver}"
  make INSTALL_ROOT="$pkgdir" install
}
 
