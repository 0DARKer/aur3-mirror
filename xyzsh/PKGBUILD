pkgname=xyzsh
pkgver=20130308
pkgrel=1
pkgdesc="a shell script language under linux, OSX, cygwin, and FreeBSD."
groups="aur"
arch=('any')
url="http://sourceforge.jp/projects/xyzsh/"
license=('custom')
makedepends=('git' 'oniguruma')

_gitroot="git://git.sourceforge.jp/gitroot/xyzsh/xyzsh.git"
_gitname="xyzsh"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd "$srcdir/$pkgname"
  ./configure --prefix=/usr --with-optimize LIBS="-ldl"
  make
  sudo make install
}
