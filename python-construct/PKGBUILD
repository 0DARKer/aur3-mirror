# Maintainer: David Scholl <djscholl at gmail dot com>
pkgname=python-construct
pkgver=2.00
pkgrel=1
pkgdesc="Python library for declarative building/parsing of data structures."
arch=('any')
url="http://construct.wikispaces.com"
license=('custom')
depends=('python2')
replaces=('construct')
source=(http://downloads.sourceforge.net/pyconstruct/construct-$pkgver-distro.zip LICENSE.txt )
md5sums=('ac374c2fdf6a9351468ad8c149584cf3'
         '2c22e3f75203d5a8252efbd18ef6ebbb')

build() {
  install -d $pkgdir/usr/lib/python2.7/site-packages
  cp -R $srcdir/construct $pkgdir/usr/lib/python2.7/site-packages
  install -D -m644 LICENSE.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE.txt
}
