# Maintainer: linuxSEAT <--put_my_name_here--@gmail.com>
# Contributor: Giovanni Scafora <giovanni@archlinux.org>

pkgname=dvblast
pkgver=1.2
pkgrel=1
pkgdesc="A simple and powerful streaming application based on the linux-dvb API"
arch=('i686' 'x86_64')
url="http://www.videolan.org/projects/dvblast.html"
license=('GPL')
depends=('libdvbpsi' 'sh')
source=(http://downloads.videolan.org/pub/videolan/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('009166092b1e99524b7599c218081a49')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make || return 1
  install -Dm755 dvblast ${pkgdir}/usr/bin/dvblast
  install -m755 dvblastctl ${pkgdir}/usr/bin/dvblastctl
  install -m755 dvblast_mmi.sh ${pkgdir}/usr/bin/dvblast_mmi.sh
  install -Dm 644 dvblast.1 ${pkgdir}/usr/share/man/man1/dvblast.1
}
