post_install() {
  cat << EOF
==> Put this in your $HOME/.emacs file to enable autoloading of fsharp-mode
==> and auto-recognition of F# files:

(require 'coffee-mode)
(add-to-list 'auto-mode-alist '("\\.coffee$" . coffee-mode))
(add-to-list 'auto-mode-alist '("Cakefile" . coffee-mode))
EOF
}

post_upgrade() {
  post_install $1
}
