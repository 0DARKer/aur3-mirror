# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=contour
pkgver=0.1.2
pkgrel=1
pkgdesc="A data server for Plasma Active"
arch=('i686' 'x86_64')
url='http://plasma-active.org/'
license=('LGPL')
depends=('kdebase-runtime' 'kactivities' 'qtmobility')
makedepends=('cmake' 'automoc4' 'kdebase-workspace')
groups=('plasma-active')
source=("http://download.kde.org/stable/active/2.0/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('e043c3e006366d8f33878aedaebf4e67')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/build"
  make DESTDIR="${pkgdir}" install
}
