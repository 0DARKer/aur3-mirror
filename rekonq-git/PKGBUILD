# Contributors: @alexwizard and @gcala

pkgname=rekonq-git
_realname=rekonq
pkgver=20130122
pkgrel=1
pkgdesc="A WebKit based web browser for KDE, with patch for localizations"
arch=('i686' 'x86_64')
url="http://rekonq.kde.org"
license=('GPL')
depends=('kdebase-keditbookmarks' 'qtwebkit' 'qt>=4.8' 'qtwebkit-plugins')
makedepends=('cmake' 'automoc4' 'git' 'docbook-xsl' 'bc')
provides=(${_realname})
conflicts=(${_realname})
install=${pkgname}.install
source=(patch)
md5sums=('555a208505115218b062a993ae69a99b')

_gitroot="git://anongit.kde.org/${_realname}"
#_gitroot=git://anongit.kde.org/scratch/adjam/rekonq2.git
_gitname=${_realname}
 
build() {
  cd ${srcdir}

  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ]; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf ${srcdir}/build
  git clone ${srcdir}/${_gitname} ${srcdir}/build
  cd ${srcdir}/build
 
  # patch and run localization files
  patch -Np1 -i ${srcdir}/patch

  export RK_SRCS="${srcdir}/build"
  cd scripts
  chmod +x download_i18n.sh
  ./download_i18n.sh
  cd ..
  # end path and run localization files

  cmake . -DCMAKE_BUILD_TYPE=Release \
          -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}