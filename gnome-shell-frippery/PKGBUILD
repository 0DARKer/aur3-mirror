pkgname=gnome-shell-frippery
pkgver=0.1.0
pkgrel=2
pkgdesc="An unofficial extension, that provides a GNOME 2 menu, moves the clock & some other features"
arch=('any')
url="http://intgat.tigress.co.uk/rmy/extensions/index.html"
license=('GPL2')
depends=('gnome-shell')
source=(http://intgat.tigress.co.uk/rmy/extensions/$pkgname-$pkgver.tgz)
install=('gschemas.install')
md5sums=('74bd9bb0b2fad4b7720a9a0dbf958bd4')

build() {
  cd "$srcdir/"
  mv ".local" "usr"
  cp -R "usr/" "$pkgdir/"
}

