pkgname=gnome-shell-frippery
pkgver=0.2.1
pkgrel=2
pkgdesc="An unofficial extension, that provides a GNOME 2 menu, Bottom Panel,moves the clock & some other features"
arch=('any')
url="http://intgat.tigress.co.uk/rmy/extensions/index.html"
license=('GPL2')
depends=('gnome-shell')
conflicts=('gnome-shell-extension-weather-git')
source=(http://intgat.tigress.co.uk/rmy/extensions/$pkgname-$pkgver.tgz)
install=('gschemas.install')
md5sums=('a6dfd2db8c26e4dbf781d0e3e5825f77')

build() {
  cd "$srcdir/"
  mv ".local" "usr"
  cp -R "usr/" "$pkgdir/"
}

