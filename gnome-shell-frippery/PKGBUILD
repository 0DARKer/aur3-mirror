pkgname=gnome-shell-frippery
pkgver=0.0.3
pkgrel=1
pkgdesc="An unofficial extension, that provides a GNOME 2 menu, moves the clock & some other features"
arch=('any')
url="http://intgat.tigress.co.uk/rmy/extensions/index.html"
license=('GPL2')
depends=('gnome-shell')
source=(http://intgat.tigress.co.uk/rmy/extensions/gnome-shell-frippery-0.0.3.tgz)
md5sums=('a8ebb4c1a2422bd863995726ba9c1f7f')

build() {
  cd "$srcdir/"
  mv ".local" "usr"
  cp -R "usr/" "$pkgdir/"
}

