pkgname=gnome-shell-frippery
pkgver=0.2.5
pkgrel=2
pkgdesc="An unofficial extension pack providing GNOME2 like features for GNOME3."
arch=('any')
url="http://intgat.tigress.co.uk/rmy/extensions/index.html"
license=('GPL2')
depends=('gnome-shell')
source=(http://intgat.tigress.co.uk/rmy/extensions/gnome-shell-frippery-0.2.x.tgz)
md5sums=('4457d3c8d093dcff788b24fae0dfe6a4')

build() {
  cd "$srcdir/"
  mv ".local" "usr"
  rm -rf "usr/share/gnome-shell/$pkgname-$pkgver"
  cp -R "usr/" "$pkgdir/"
}

