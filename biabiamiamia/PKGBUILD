# Maintainer: Yangtse <yangtsesu@gmail.com>

pkgname=biabiamiamia
pkgver=0.1.20130301
pkgrel=2
pkgdesc="Baidu music download tool"
arch=('i686' 'x86_64')
url="https://code.google.com/p/yangyanggnu"
license=('unknown')
depends=('curl')
makedepends=('cmake')
source=(https://yangyanggnu.googlecode.com/files/${pkgname}_v0.1_2013-3-1.tar.gz)
md5sums=('60f01717e834bcb5900bedf8e747b5f6')
options=(!libtool)

build() {
  cd ${srcdir}/${pkgname}_v0.1_2013-3-1
  
  cmake .
  make
}

package() {
  cd ${srcdir}/${pkgname}_v0.1_2013-3-1
  make DESTDIR=${pkgdir} install
}
