pkgname=qbittorrent-svn
pkgver=4863
pkgrel=1
pkgdesc="A bittorrent client written in C++ / Qt4 using the good libtorrent library"
arch=('i686' 'x86_64')
url="http://www.qbittorrent.org/"
license=('GPL')
depends=('qt' 'libtorrent-rasterbar' 'curl' 'xdg-utils' 'zziplib' 'boost>=1.41.0' 'geoip' 'libnotify')
makedepends=('subversion')
optdepends=('python: needed for search')
source=('python2.patch')
md5sums=('db0d79fee8ce3470ad3741d36b02a94c')
conflicts=('qbittorrent')

_svntrunk="https://qbittorrent.svn.sourceforge.net/svnroot/qbittorrent/trunk/"
_svnmod="qbittorrent"

build() {
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
 sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
       -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
       $(find ./ -name '*.py')

  patch -Np1 -i ${srcdir}/python2.patch

        ./configure --prefix=/usr || return 1
        make || return 1
        make INSTALL_ROOT=${pkgdir} install || return 1
rm -r $srcdir/$_svnmod-build
}
