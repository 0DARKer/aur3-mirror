# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=pybitmessage-git
pkgver=20121226
pkgrel=1
pkgdesc="Sends encrypted messages to another person or to many subscribers"
arch=('any')
depends=('python2' 'python2-pyqt' 'qt')
makedepends=('git')
url="https://github.com/Bitmessage/PyBitmessage"
license=('MIT')
source=(pybitmessage.sh)
sha256sums=('c20eeeffd4931d8bcd50de5e6e1a974323ebbd3f5ad1d34483c6adeb3b5f3ae1')
provides=('pybitmessage')
conflicts=('pybitmessage')


_gitroot='git://github.com/Bitmessage/PyBitmessage.git'
_gitname='pybitmessage'

# change this if you'd like to build a different branch
_gitbranch='master'

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin $_gitbranch
    msg "The local files are updated."
  else
    git clone -b $_gitbranch "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/python#/usr/bin/python2#g'
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/env python#/usr/bin/env python2#g'
}

package() {
  cd "$srcdir"
  install -D -m755 pybitmessage.sh "${pkgdir}/usr/bin/pybitmessage"
  cd "$srcdir/$_gitname-build"
  mkdir -p "$pkgdir"/usr/share/pybitmessage
  cp -R ./* "$pkgdir"/usr/share/pybitmessage
}
