pkgname=uniform-icon-theme
pkgver=0.1.2
pkgrel=1
pkgdesc="A non-uniform yet consistent icon theme."
url="http://0rax0.deviantart.com/art/Uniform-Icon-Theme-453054609"
license=('cc-by-nc-sa-3.0')
arch=('any')
#depends=('gnome-shell')
optdepends=('gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://fc03.deviantart.net/fs71/f/2014/130/8/c/uniform_icon_theme_by_0rax0-d7hqj69.zip")
DLAGENTS=('http::/usr/bin/wget -c -t 3 --waitretry=3 -H -U Mozilla -O %o %u')
 
 
package() {
  mkdir -p "${pkgdir}/usr/share/icons/"
  cp -r "${srcdir}/Uniform" "${pkgdir}/usr/share/icons/"
}
 
md5sums=('375ce0b5c2e0d723285c5e27c201154a')
