# Contributor: Alexander Surma <surma (a t) drebesium (do t) org>

pkgname=id3ed
pkgver=1.10.4
pkgrel=1
pkgdesc="Interactive command line ID3-Tag editor"
arch=('i686' 'x86_64')
url="http://users.dakotacom.net/~donut/programs/id3ed.html"
license=('GPL')
depends=('ncurses')
source=('http://users.dakotacom.net/~donut/programs/id3ed/id3ed-1.10.4.tar.gz'
	'Makefile.diff')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  patch $srcdir/$pkgname-$pkgver/Makefile $srcdir/Makefile.diff || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

md5sums=('fc0df31ef4ad90b83ee133929afbcc83'
         'e712d83e95a8cbf9061074422c906441')
