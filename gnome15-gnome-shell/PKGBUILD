# Maintainer: Nuno Araujo <nuno.araujo@russo79.com>
pkgname=gnome15-gnome-shell
pkgver=0.0.2
pkgrel=1
pkgdesc="Gnome Shell plugin for Gnome15"
arch=(any)
url="http://www.russo79.com/gnome15"
license=('GPL')
depends=('gnome15' 'gnome-shell')
makedepends=('binutils')
install=$pkgname.install
source=("https://projects.russo79.com/attachments/download/79/${pkgname}-${pkgver}.tar.gz")
md5sums=('3e42aa315e50c29e5bdd56ba473c2608')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make install DESTDIR=${pkgdir}
}

# vim:set ts=2 sw=2 et:
