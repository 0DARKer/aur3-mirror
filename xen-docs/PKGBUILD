pkgname=xen-docs
pkgver=4.3.0
pkgrel=2
pkgdesc="Xen 4 (docs)"
arch=(i686 x86_64)
url="http://xen.org/"
license="GPL"
makedepends=('markdown' 'transfig')
conflicts=('xen4' 'xen3' 'xen-hv-tools' 'libxen4')
source=(http://bits.xensource.com/oss-xen/release/${pkgver}/xen-${pkgver}.tar.gz)

package() {
  cd $srcdir/xen-${pkgver}
  cd docs
  unset CFLAGS LDFLAGS
  ./configure --prefix=/usr
  cd ..
  make DESTDIR=$pkgdir  install-docs
}

md5sums=('7b18cfb58f1ac2ce39cf35a1867f0c0a')
