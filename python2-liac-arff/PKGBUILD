_realname=liac-arff
pkgname=python2-liac-arff
pkgver=1.1
pkgrel=1
pkgdesc="A library to read and write ARFF files in Python 2"
arch=('any')
url="https://pypi.python.org/pypi/$_realname/$pkgver"
license=('MIT')
depends=('python2' 'python2-distribute')
conflicts=('python2-arff')
options=(!emptydirs)
source=("https://pypi.python.org/packages/source/l/$_realname/$_realname-$pkgver.zip")
sha512sums=('25b4aad52156a711442d13c43898c963bccad5d091d39ec330e7e3e9394b45a23b2e21d2651687717a6c43e72a975a594fd867009820d3837688973a5a8a19b6')

package() {
	cd "$srcdir/$_realname-$pkgver"
	python2 setup.py install --root="$pkgdir/" --optimize=1
}
