#Contributor: lh<jarryson@gmail.com>

pkgname=iptux
pkgver=0.5.1_2
pkgrel=2
pkgdesc="Lan communication software, compatiable with IP Messenger."
arch=('i686' 'x86_64')
url="http://code.google.com/p/iptux/" 
license=('GPL')
depends=("gtk2" "gconf")
makedepends=("make")
source=(http://iptux.googlecode.com/files/$pkgname-${pkgver/_/-}.tar.gz)
install=iptux.install
md5sums=('cf98bafc198345f993648a87ad2af31e')

build() { 
  cd $srcdir/$pkgname-${pkgver/_*/}
  msg "Starting make..."
  ./configure --prefix=/usr || return 1
  make ||return 1
  make DESTDIR=$startdir/pkg install
}
