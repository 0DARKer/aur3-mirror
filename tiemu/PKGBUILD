# Maintainer: Scott Garrett <Wintervenom@archlinux.us>
# Contributor: Scott Garrett <Wintervenom@archlinux.us>

pkgname=tiemu
pkgver=3.03
pkgrel=1
pkgdesc="TiEmu emulates Texas Instruments calculators TI-89/92/92+/V200PLT (no GDB)."
arch=(i686 x86_64)
url="http://tilp.info/"
license=('GPL')
depends=('libglade' 'libticalcs' 'sdl')
options=('force' '!libtool')
source=("http://repo.calcforge.org/debian/source/tiemu_$pkgver.orig.tar.gz")
md5sums=('de17a1f3af43acdbdfd54f6176f40619')

build() {
  cd $srcdir/tiemu-$pkgver
  ./configure --without-kde --disable-gdb --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
