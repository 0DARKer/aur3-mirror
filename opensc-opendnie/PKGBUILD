# Maintainer: nqn1976@gmail.com

pkgname=opensc-opendnie
pkgver=0.12.1svn5320
pkgrel=1
pkgdesc="Access smart cards that support cryptographic operations (with open DNIe driver)"
arch=('i686' 'x86_64')
url="http://forja.cenatic.es/projects/opendnie/"
license=("LGPL")
options=('!libtool')
depends=('openssl' 'ccid' 'pinentry')
makedepends=('autoconf' 'automake')
provides=('opensc')
conflicts=('opensc')
source=("http://forja.cenatic.es/frs/download.php/1221/${pkgname}-0.12.1-svn5320.tar.gz")
md5sums=('eb54078272cf9c4bba7708e9e156966b')

build() {
  cd ${srcdir}/${pkgname}-0.12.1-svn/
  ./bootstrap
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd ${srcdir}/${pkgname}-0.12.1-svn/
  make DESTDIR=${pkgdir} install
}