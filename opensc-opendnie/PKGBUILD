# Maintainer: nqn1976@gmail.com

pkgname=opensc-opendnie
pkgver=0.12.1svn
pkgrel=2
pkgdesc="Access smart cards that support cryptographic operations (with open DNIe driver)"
arch=('i686' 'x86_64')
url="http://forja.cenatic.es/projects/opendnie/"
license=("LGPL")
options=('!libtool')
depends=('openssl' 'pcsclite')
makedepends=('autoconf' 'automake' 'libassuan')
provides=('opensc')
conflicts=('opensc')
source=("http://forja.cenatic.es/frs/download.php/1153/${pkgname}-0.12.1-svn.tar.gz")
md5sums=('a5b26ee9f9470726595fa41928a52eb9')

build() {
  cd ${srcdir}/${pkgname}-0.12.1-svn/
  ./bootstrap
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd ${srcdir}/${pkgname}-0.12.1-svn/
  make DESTDIR=${pkgdir} install
}