# Maintainer: nqn1976@gmail.com

pkgname=opensc-opendnie
pkgver=0.12.1svn5436
pkgrel=1
pkgdesc="Access smart cards that support cryptographic operations (with open DNIe driver)"
arch=('i686' 'x86_64')
url="http://forja.cenatic.es/projects/opendnie/"
license=("LGPL")
options=('!libtool')
depends=('openssl' 'ccid' 'pinentry')
makedepends=()
provides=('opensc')
conflicts=('opensc')
source=("http://forja.cenatic.es/frs/download.php/1233/${pkgname}-0.12.1-svn5436.tar.gz")
md5sums=('8b834fea5eaedc489cedcbf6669112d5')

build() {
  cd ${srcdir}/opensc-0.12.1-svn/
  ./bootstrap
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd ${srcdir}/opensc-0.12.1-svn/
  make DESTDIR=${pkgdir} install
}
