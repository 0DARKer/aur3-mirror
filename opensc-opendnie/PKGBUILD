# Maintainer: nqn1976@gmail.com

pkgname=opensc-opendnie
pkgver=0.12.1
pkgrel=1
pkgdesc="Access smart cards that support cryptographic operations (with open DNIe driver)"
arch=('i686' 'x86_64')
url="http://forja.cenatic.es/projects/opendnie/"
license=("LGPL")
options=('!libtool')
depends=('openssl' 'ccid' 'pinentry')
makedepends=()
provides=('opensc')
conflicts=('opensc')
source=("http://forja.cenatic.es/frs/download.php/1249/${pkgname}-${pkgver}.tar.gz")
md5sums=('4eb74dafcb7b767a2cc59141e571fbbc')

build() {
  cd ${srcdir}/opensc-${pkgver}/
  ./bootstrap
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd ${srcdir}/opensc-${pkgver}/
  make DESTDIR=${pkgdir} install
}
