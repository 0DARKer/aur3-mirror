# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-railties
_gemname=${pkgname#ruby-}
pkgver=3.1.1
pkgrel=1
pkgdesc="Rails internals: application bootup, plugins, generators, and rake tasks."
arch=('any')
url="http://www.rubyonrails.org"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-actionpack' 'ruby-activesupport' 'ruby-rack-ssl' 'ruby-rdoc' 'ruby-thor')
makedepends=(rubygems)
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('ab308009c977561e64a0c9d3bd38a470')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}
