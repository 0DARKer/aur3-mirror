pkgname=spring-evolutionrts
pkgver=25prealpha
_pkgver=patest25
pkgrel=2
pkgdesc="An extensive and completely free RTS experience that uses the Spring engine."
arch=('any')
url="http://www.evolutionrts.info/"
license="CC"
depends=('spring')
source=(http://evolutionrts.info/evolutionpatches/evolutionrts${_pkgver}.sd7)
md5sums=('3887584b592ff19b1900b07fd10a49e0')

build() {
	install -D -m 644 $srcdir/evolutionrts${_pkgver}.sd7 $pkgdir/usr/share/spring/mods/
}
