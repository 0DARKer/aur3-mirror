# Maintainer: NiteHogg <keith.b.elliott [at] gmail [dot] com>

# Custom properties used in PKGBUILD and auto-package creation.
_name="Evolution RTS"
_rooturl="http://packages.springrts.com/builds"
_prefix=evo-v
_version=6.42
_suffix=.sdz
_force_update=n
_category='games'
_include=()

_filename="$_prefix$_version$_suffix"

pkgname=spring-evolutionrts
pkgver=$_version
pkgrel=1
pkgdesc="A free mod for the Spring engine, $_name revolves around fast \
thinking and micro-management as well as macro-management gameplay."
arch=(any)
url="http://www.evolutionrts.info"
license=('CCPL')
depends=("spring")
changelog="ChangeLog"
noextract="$_filename"
source=("$_rooturl/$_filename")
md5sums=('f6acfb4416ed087238041e6a80c3a69a')

package() {

    mkdir -p $pkgdir/usr/share/spring/mods
    install -Dm644 $srcdir/$_filename $pkgdir/usr/share/spring/mods
}

