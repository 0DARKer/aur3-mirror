# Contributor: Jared Casper <jaredcasper@gmail.com>
pkgname=iverilog-snapshot
pkgver=20090923
pkgrel=1
pkgdesc="Verilog simulation and synthesis tool (Development snapshot)."
arch=('i686' 'x86_64')
url="http://www.icarus.com/eda/verilog/"
license=('GPL')
depends=()
makedepends=('bison' 'flex' 'readline')
conflicts=('iverilog')
provides=('iverilog')
source=(ftp://icarus.com/pub/eda/verilog/snapshots/verilog-$pkgver.tar.gz)
md5sums=('660e7fe785a6f631c2924c1962172f94')

build() {
  cd $srcdir/verilog-$pkgver
  ./configure --prefix=/usr
  make || return 1
  MAKEFLAGS="" make prefix=$pkgdir/usr install
}
