#maintainer desarrolladores@softwareperonista.com.ar
pkgname=nomeolvides-git
pkgver=0.11.0.1
pkgrel=1
pkgdesc="A simple historical facts manager - unstable version"
arch=('i686' 'x86_64')
url="http://github.com/softwareperonista/nomeolvides"
license=('GPL')
depends=('gtk3' 'xdg-utils')
makedepends=('git' 'vala' 'autogen' 'libltdl' 'intltool')
install='nomeolvides-git.install'
conflicts=('')
provides=('')
source=("git://github.com/softwareperonista/nomeolvides.git"
        "empaquetar-beta.patch")
md5sums=('SKIP'
         '1aab7112f692de52b4abeb381aaf42c1')
_gitname="nomeolvides"

pkgver() {
	cd "$_gitname"
	printf "%s\n" "$(cat configure.ac | grep AC_INIT | awk -v FS=',' '{ print $2 }' | sed 's/\ //' | awk -v FS='.' '{ print $1"."$2"."$3"." }')$(git describe --long | awk -v FS='-' '{ print $2 }')"
}

build() {

 cd "$srcdir"
 msg "Connecting to GIT server..."
 if [ -d $_gitname ] ; then
   cd $_gitname && git pull origin
   msg "The local files are updated."
 else
   git clone --depth=1 $_gitroot $_gitname
 fi
 msg "GIT checkout done or server timeout"
 
  rm -rf "$srcdir/$_gitname-build" 
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  sed -i "s/$(cat configure.ac | grep AC_INIT | awk -v FS=',' '{ print $2 }' | sed 's/\ //')/$pkgver/" configure.ac

  sed -i "s/0.9.600/$pkgver/" ${srcdir}/empaquetar-beta.patch 
  git apply ${srcdir}/empaquetar-beta.patch

  ./autogen.sh --prefix=/usr --bindir=/usr/bin 

  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir" install
}
