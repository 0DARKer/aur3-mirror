# Maintainer: M0Rf30 <morf3089@gmail.com>
pkgname=subsonic-beta
pkgver=4.4.beta1
pkgrel=1
pkgdesc="Subsonic is a free, web-based media streamer and jukebox."
arch=('i686' 'x86_64')
url="http://subsonic.org/"
license=('GPL')
depends=('jre')
conflicts=('subsonic')
source=(http://prdownloads.sourceforge.net/subsonic/subsonic-${pkgver}-standalone.tar.gz
        'subsonic'
	'subsonic.rc')
backup=('var/subsonic/subsonic.sh')
md5sums=('04225f4ab008d02519e6c445543794f1'
         '43b8000cf7d5beb83bb9d0ca37535b0f'
	 '4bf5636eda151e7c0930aee9b57bcc51')
install=$pkgname.install

build() {
  cd ${srcdir}
  mkdir -p $pkgdir/var/subsonic
  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/etc/rc.d
  cp  * $pkgdir/var/subsonic
  rm $pkgdir/var/subsonic/{subsonic,subsonic.rc,subsonic.bat,subsonic-${pkgver}-standalone.tar.gz}
  cp $srcdir/subsonic $pkgdir/usr/bin
  cp $srcdir/subsonic.rc $pkgdir/etc/rc.d/subsonic
}


