# Contributor: sLite (daniel@slite.org)
pkgname=subversion-1.6
pkgver=1.6.17
pkgrel=1
pkgdesc="Subversion 1.6.17"
arch=('i686' 'x86_64')
url="http://subversion.apache.org"
license=('Apache license')
depends=(apr-util)
provides=(svn subversion)
conflicts=(svn subversion)
source=(http://subversion.tigris.org/downloads/subversion-$pkgver.tar.gz)

build() {
  cd "$srcdir/subversion-$pkgver"
  ./configure --localstatedir=/var --prefix=/usr --sysconfdir=/etc 
  make
}

package ()
{
  cd "$srcdir/subversion-$pkgver"
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:

md5sums=('aa0f54aacac21bf5c84079e551357c15')
