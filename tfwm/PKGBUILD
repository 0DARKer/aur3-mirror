pkgname=tfwm
pkgver=0
pkgrel=1
epoch=
pkgdesc="Tiny Floating WM"
arch=(any)
url="http://sourceforge.net/projects/tfwm"
license=('GPL')
groups=()
depends=('libx11')
makedepends=()
checkdepends=()
optdepends=()
provides=(tfwm)
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://downloads.sourceforge.net/project/$pkgname/sources/$pkgname-$pkgver.$pkgrel.tar.gz)
noextract=()
md5sums=('45b8c05509fe113ca3f4ccaefd3890c4')

build() {
  cd "$srcdir"
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}
