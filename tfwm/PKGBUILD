pkgname=tfwm
pkgver=0
pkgrel=2
epoch=
pkgdesc="Tiny Floating WM"
arch=(any)
url="http://sourceforge.net/projects/tfwm"
license=('GPL')
groups=()
depends=('libx11')
source=(http://downloads.sourceforge.net/project/$pkgname/sources/$pkgname-$pkgver.$pkgrel.tar.gz)
md5sums=('087cc4ea03c6f93303a1b5484e6ee863')

build() {
  cd "$srcdir"
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}
