# Contributor: Nick B <Shirakawasuna at gmail _dot_com>

pkgname=r-xtable
pkgver=1.5_6
pkgrel=1
pkgdesc="LaTeX and HTML tables export for the R language."
arch=('i686' 'x86_64')
url="http://cran.r-project.org/web/packages/xtable/index.html"
license=("GPL2")
depends=('r')
source=(http://cran.r-project.org/src/contrib/xtable_${pkgver//_/-}.tar.gz)

build() {
 mkdir -p $pkgdir/usr/lib/R/library
 cd $srcdir
 R CMD INSTALL -l ../pkg/usr/lib/R/library ./xtable
 rm $pkgdir/usr/lib/R/library/R.css
}
md5sums=('f4e722a7baacce8ab5f4d53537ca4f86')
