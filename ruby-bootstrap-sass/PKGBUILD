# Maintainer: Madalin Ignisca <madalin.ignisca@gmail.com>

pkgname=ruby-bootstrap-sass
pkgver=3.0.3.0
pkgrel=1
pkgdesc="Twitter's Bootstrap, converted to Sass and ready to drop into Rails or Compass"
arch=(i686 x86_64)
url="https://github.com/twbs/bootstrap-sass"
license=("Apache 2.0")
groups=()
depends=("ruby-sass")
makedepends=("rubygems")
optdepends=("ruby-compass")
provides=("bootstrap-sass")
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://gems.rubyforge.org/gems/bootstrap-sass-${pkgver}.gem")
noextract=("bootstrap-sass-${pkgver}.gem")
md5sums=("bda3ece16fe8c4867f60ca3c1821b6dc")

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "${pkgdir}$_gemdir" bootstrap-sass-$pkgver.gem \
	  -n "${pkgdir}/usr/bin" || return 1

  install -d -m755 "${pkgdir}/usr/share/licenses/bootstrap-sass" || return 1
}
