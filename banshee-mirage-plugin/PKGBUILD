# Contributor: originof <origin.of@gmail.com>

pkgname=banshee-mirage-plugin
pkgver=0.3.0
pkgrel=1
pkgdesc="An Automatic Playlist Generation Plugin for Banshee"
arch=('i686')
license=('GPL')
url="http://hop.at/mirage/"
depends=('mono' 'fftw' 'sqlite3' 'mpg123' 'sox' 'faad2' 'vorbis-tools' 'banshee>=1.2.0')
source=(http://hop.at/mirage/download/mirage-$pkgver.tar.gz)
md5sums=('1f7d86f3b43c30739bc7efbe413b3cb5')

build() {
  export MONO_SHARED_DIR=${startdir}/src/.wabi
  mkdir -p "${MONO_SHARED_DIR}"
  
  cd $startdir/src/mirage-$pkgver
  ./configure --prefix=/usr
  make
  make DESTDIR=$startdir/pkg install
}
