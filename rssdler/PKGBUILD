# Contributor: scj <scj - archlinux _ us>

pkgname=rssdler
pkgver=0.4.2
pkgrel=4
pkgdesc="Utility to automatically download RSS enclosures"
arch=('any')
url="http://code.google.com/p/rssdler/"
license=('GPL2')
depends=(python2-feedparser)
source=(http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz
        socket-timeout.diff
        config.txt)
md5sums=('2f0aef5611bc1231928b861f717953eb'
         '67d058f6d3e059e38904ccf9b9babfdd'
         'f9bf928e97b4fd996e1c5854990adcad')

build() {
  cd "$srcdir/$pkgname${pkgver//\./}"
  patch -Np0 -i ../socket-timeout.diff
  python2 setup.py install --prefix=/usr --root="$pkgdir"
  install -Dm644 ../config.txt "$pkgdir/usr/share/$pkgname/config.txt"
  install -Dm644 userFunctions.py \
    "$pkgdir/usr/share/$pkgname/postDownloadFunctions.py"
}

