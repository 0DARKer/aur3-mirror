pkgname=panotourpro
pkgver=1.8.0
_pkgver=180
_pkgname="PanotourPro_${_pkgver}"
pkgrel=1
pkgdesc='Create pro-quality virtual tours'
arch=('i686' 'x86_64')
url='http://kolor.com/'
license=('custom: "commercial"')
depends=("qt4>=4")
install=$pkgname.install
case $CARCH in
  i686)
  source=("PanotourPro_Linux32_${_pkgver}.tar.gz::http://download.kolor.com/ptp/stable/linux32tar"
  "$pkgname" "$pkgname.desktop")
  md5sums=('c2b279533f294d6d651bc00949dbbc31'
         'e7bc184df7e778f46f922873d880e08a'
         '0704b140470f7ff7492b76cf44e70b06')
  ;;
  x86_64)
  source=("PanotourPro_Linux64_${_pkgver}.tar.gz::http://download.kolor.com/ptp/stable/linux64tar"
  "$pkgname" "$pkgname.desktop")
  md5sums=('a78e4866a05ee97582f246f118bfeb4e'
         'e7bc184df7e778f46f922873d880e08a'
         '0704b140470f7ff7492b76cf44e70b06')
  ;;
  *)
  echo "Not specified architecture: '${CARCH}'. Aborting." 2>/dev/stderr
  return 1
  ;;
esac
package(){
  cd "$srcdir/$_pkgname" || return 1
  install -dm755 $pkgdir/opt/$pkgname || return 1
  tar -c ./ | tar -x -C $pkgdir/opt/$pkgname || return 1
  install -Dm755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname || return 1
  rm -f $pkgdir/opt/$pkgname/libQt* || return 1
  install -Dm644 "$srcdir/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop"
}
