# Contributor: twa022 <twa022@gmail.com>

pkgname=goffice-devel
_pkgname=goffice
pkgver=0.7.17
pkgrel=1
pkgdesc="A library of document-centric objects and utilities built on top of GLib and Gtk+"
arch=(i686 x86_64)
license=('GPL')
depends=('libgsf-gnome>=1.14.15')
makedepends=('perlxml' 'pkgconfig' 'intltool')
optdepends=('libxml2' 'libsm' 'gtk2' 'popt')
provides=("goffice=$pkgver")
conflicts=('goffice')
url="http://www.gnome.org"
options=(!libtool)
source=(http://ftp.gnome.org/pub/gnome/sources/${_pkgname}/${pkgver%.*}/${_pkgname}-${pkgver}.tar.bz2)

build() {
  cd ${startdir}/src/${_pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static
  make || return 1
  make DESTDIR=${startdir}/pkg install
}

md5sums=('969f3e1fb5c9e1740346b00ae428f4c9')
