# Contributor: Vitaliy Berdinskikh ur6lad[at]i.ua

pkgname=jna
pkgver=3.2.7
pkgrel=1
pkgdesc="Easy access to native shared libraries for java"
arch=('i686')
url="https://jna.dev.java.net"
license=('LGPL')
depends=('java-runtime')
makedepends=('apache-ant')
source=(https://jna.dev.java.net/source/browse/%2Acheckout%2A/jna/tags/${pkgver}/jnalib/dist/jna.jar)
noextract=('*.jar')

package() {
    cd $srcdir
    install -m644 -D jna.jar ${pkgdir}/usr/share/java/${pkgname}/jna.jar
}

md5sums=('56c4d32d08c89a93159259e0da38d9db')
sha256sums=('722b31d0c8b14a7e7e24f332c88e7dc658c1703f7e03813670b9cc89ce795606')
