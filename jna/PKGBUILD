# Contributor: [Vitaliy Berdinskikh](mailto:ur6lad@archlinux.org.ua) aka UR6LAD

pkgname=jna
pkgver=3.4
pkgrel=2
pkgdesc="Easy access to native shared libraries for java"
arch=('any')
url="https://github.com/twall/jna"
license=('LGPL2.1')
depends=('java-runtime')
source=(http://java.net/projects/${pkgname}/downloads/download/${pkgver}/${pkgname}.jar
		http://java.net/projects/${pkgname}/downloads/download/${pkgver}/platform.jar
		setClasspath.sh)
noextract=('${pkgname}.jar' 'platform.jar')

package() {
	mkdir -p ${pkgdir}/usr/share/java/${pkgname}

	cd $srcdir

	install -m644 -D jna.jar ${pkgdir}/usr/share/java/${pkgname}
	install -m644 -D platform.jar ${pkgdir}/usr/share/java/${pkgname}
	install -m644 -D setClasspath.sh ${pkgdir}/usr/share/java/${pkgname}
}

md5sums=('30016fd1e05d3466e642cc779cde3c44'
         '5c0b7e60ab9e450a3cff5e124bc5f9f2'
         '80a273234fb805ba4140ffc9dd54d389')
sha256sums=('e10ced25ec9a8d88475ddac308e853203320e17e68e092e3159bac3d1e7b6a48'
            '0fe3efd0023e6558467980b636f3275c38d4dcc24bcfd045de67cb7237cfbeaa'
            '9af347a0f73533198bf9c607cf7330a0077a1ccbc5edb35a0e596eb7f29546b4')
