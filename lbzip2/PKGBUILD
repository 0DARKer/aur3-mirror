# Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=lbzip2
pkgver=0.23
pkgrel=1
pkgdesc="A multi-threaded bzip2/bunzip2 (de)compression tool"
arch=('i686' 'x86_64')
url="http://lacos.hu/"
license=('GPL' 'GPL3')
depends=('bzip2>=1.0.5')
source=(http://lacos.web.elte.hu/pub/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('72ab7fbfd3804e4ef1a2030f51ac3825')

build() {
  cd $pkgname

  sed 's|-O2||g' -i Makefile

  make || return 1
  install -Dm755 $pkgname ${pkgdir}/usr/bin/$pkgname || return 1
}
