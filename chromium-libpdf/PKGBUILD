# Maintainer: Andrew Webley <unsuspectinghero@gmail.com>
# Contributor: Dmitriy Morozov <archlinux@foxcub.org> 

pkgname=chromium-libpdf
pkgver=LATEST
pkgrel=5
pkgdesc="libpdf plugin for Chromium"
url="http://wiki.archlinux.org/index.php/Chromium#libpdf.so"
arch=("i686" "x86_64")
license=("custom:Google_Chrome")
makedepends=('lynx')
depends=('chromium')
case $CARCH in
  i686)   libpdf_arch="i386"  ;;
  x86_64) libpdf_arch="amd64" ;;
esac
build() {
	cd "$srcdir"

	lynx https://www.google.com/chrome/intl/en/eula_text.html -dump >> LICENSE.txt
	curl -fLC - --retry 3 --retry-delay 3 -o "google-chrome-unstable_current_$libpdf_arch.deb" "https://dl.google.com/linux/direct/google-chrome-unstable_current_$libpdf_arch.deb"
	
	bsdtar xvf "google-chrome-unstable_current_$libpdf_arch.deb" data.tar.lzma
	bsdtar xvf data.tar.lzma opt/google/chrome/libpdf.so

	install -Dm755 opt/google/chrome/libpdf.so "$pkgdir/usr/lib/chromium/libpdf.so"
	install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt"
}

