#Maintainer: Tondu <thomas.gastine at wanadoo.fr>

pkgname=python-enthought-utils
pkgver=3.4.1
pkgrel=1
pkgdesc="Enthought libraries needed to use Mayavi2 (AppTools, EnthoughtBase, EnvisageCore, EnvisagePlugins and SetupDocs)"
arch=('i686' 'x86_64')
url="http://code.enthought.com/projects/mayavi"
provides=('AppTools' 'EnthoughtBase' 'EnvisageCore' 'EnvisagePlugins' 'SetupDocs')
source=("http://www.enthought.com/repo/ETS/EnthoughtBase-3.1.0.tar.gz"
        "http://www.enthought.com/repo/ETS/AppTools-$pkgver.tar.gz"
        "http://www.enthought.com/repo/ETS/EnvisageCore-3.2.0.tar.gz"
        "http://www.enthought.com/repo/ETS/EnvisagePlugins-3.2.0.tar.gz"
        "http://www.enthought.com/repo/ETS/SetupDocs-1.0.5.tar.gz")
depends=('python2')
makedepends=('setuptools' 'pyrex' 'python-sphinx')
license=('GPL')
md5sums=('1d8f6365d20dfd5c4232334e80b0cfdf'
         'f0c6b4b00c930f6db9d48de2353c28fc'
	 '47027468582464738f475c3560bcfd29'
	 'caa1c701e11de17993019509d2ff96d8'
	 'd2fd0ea3311d9520ace007364937ce39')

build() {
    # Install EnthoughtBase 
    cd $srcdir/EnthoughtBase-3.1.0
    python2 setup.py build install --root $pkgdir --prefix=/usr || return 1
    # Install AppTools 
    cd $srcdir/AppTools-$pkgver
    python2 setup.py build install --root $pkgdir --prefix=/usr || return 1
    # Install EnvisageCore 
    cd $srcdir/EnvisageCore-3.2.0
    python2 setup.py build install --root $pkgdir --prefix=/usr || return 1
    # Install EnvisagePlugins 
    cd $srcdir/EnvisagePlugins-3.2.0
    python2 setup.py build install --root $pkgdir --prefix=/usr || return 1
    # Install SetupDocs 
    cd $srcdir/SetupDocs-1.0.5
    python2 setup.py build install --root $pkgdir --prefix=/usr || return 1
}
