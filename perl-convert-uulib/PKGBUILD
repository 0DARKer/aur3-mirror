pkgname='perl-convert-uulib'
pkgver='1.33'
pkgrel='1'
pkgdesc='Perl interface to the uulib library (a.k.a. uudeview/uuenview).'
url='http://search.cpan.org/~mlehmann/Convert-UUlib/'
arch=('i686' 'x86_64')
depends=('perl>=5.8.4')
source=("http://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/Convert-UUlib-${pkgver}.tar.gz")
install="${pkgname}.install"
license=('GPL' 'Artistic')

build()
{

	cd ${startdir}/src/Convert-UUlib-${pkgver}

	eval $(perl -V:archname)

	perl Makefile.PL INSTALLARCHLIB=/usr/lib/perl5/current/${archname} INSTALLSITELIB=/usr/lib/perl5/site_perl/current INSTALLSITEARCH=/usr/lib/perl5/site_perl/current/${archname}

	make || return 1

	make DESTDIR=${startdir}/pkg install || return 1

	find ${startdir}/pkg -name '.packlist' -exec rm -f {} \;
	find ${startdir}/pkg -name 'perllocal.pod' -exec rm -f {} \;

}

md5sums=('d4e3330562e5d4f6c022b0a0619a2c71')
