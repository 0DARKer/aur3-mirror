# Maintainer: FzerorubigD <Fzerorubigd {AT} GMail {DOT} com>

pkgname=gpaste-git
pkgver=20110624
pkgrel=1
pkgdesc="a clipboard management tool which comes with a tray applet as well as a GNOME Shell extension"
arch=('any')
url="https://github.com/Keruspe/GPaste"
license=('custom')
depends=('gnome-shell')
makedepends=('git')
source=()
md5sums=()

_gitroot=https://github.com/Keruspe/GPaste.git
_gitname=GPaste

build() {
  cd $srcdir
  msg "Connecting to githup.com GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin && cd ..
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi
  cd $_gitname

  msg "GIT checkout done or server timeout"
  ./autogen.bash --enable-gnome-shell-extension
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}
