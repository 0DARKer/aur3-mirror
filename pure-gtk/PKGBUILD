pkgname=pure-gtk
pkgver=0.8
pkgrel=1
pkgdesc="A collection of bindings to use the GTK+ 2.x with Pure"
arch=("i686" "x86_64")
license=('LGPL3')
url="http://code.google.com/p/pure-lang"
depends=('pure' 'atk' 'cairo' 'gtk2' 'pango')
makedepends=('make' 'gcc' 'bison' 'flex')
source=("http://pure-lang.googlecode.com/files/$pkgname-$pkgver.tar.gz")
md5sums=('dde220acd1781b7c809bca4e214181bc')

build() {
	cd $startdir/src/$pkgname-$pkgver

	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}
