pkgname=pure-gtk
pkgver=0.10
pkgrel=1
pkgdesc="A collection of bindings to use the GTK+ 2.x with Pure"
arch=("i686" "x86_64")
license=('LGPL3')
url="http://code.google.com/p/pure-lang"
depends=('pure' 'gtk2')
makedepends=('make' 'gcc' 'bison' 'flex')
source=("http://pure-lang.googlecode.com/files/$pkgname-$pkgver.tar.gz")

build() {
	cd $startdir/src/$pkgname-$pkgver

	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
}
md5sums=('fb0ebe6ece77327e3585b41f2eae8202')
