# Contributor: Calimero <calimeroteknik@free.fr>
pkgname=defora-editor
pkgver=0.1.1
pkgrel=1
pkgdesc="The Defora lightweight X11 text editor"
arch=('i686' 'x86_64')
url="http://defora.org/os"
license=('GPL3')
depends=('defora-libsystem' 'gtk2')
source=(http://www.defora.org/os/download/download/3280/Editor-${pkgver}.tar.gz)
md5sums=('f8ba4749a6faa9a510f02071d1daa80e')

build() {
  cd "$srcdir"/Editor-$pkgver
  make || return 1
  make DESTDIR="$pkgdir" PREFIX="/usr" install
}
