# Maintainer: Feydaykyn <feydaykyn[at]yahoo[dot]fr>
pkgname=codeworker
pkgver=4_5_3
pkgrel=1
pkgdesc="A universal parsing tool & a source code generator"
url="http://codeworker.free.fr/index.html"
arch=('x86_64' 'i686')
license=('GPL2')
depends=('gcc>=3.2')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("http://codeworker.free.fr/downloads/CodeWorker_SRC4_5_3.zip")
md5sums=('cd5a2f78f78431d60ae9ebda974bc207')

build() {
  cd "${srcdir}/CodeWorker${pkgver}"
  make
}

package () {
    cd "${srcdir}/CodeWorker${pkgver}"
    mkdir -p "${pkgdir}/usr/bin/"
    mv ${pkgname} "${pkgdir}/usr/bin/"
}