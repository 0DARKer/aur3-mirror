# Maintainer: Jonas Heinrich <onny@project-insanity.org>

pkgname=btlive
_pkgname=BTLive
pkgver=0.1
pkgrel=1
pkgdesc="Bittorrent Live is a technology for p2p live streaming, client version"
arch=('i686' 'x86_64')
url="http://live.bittorrent.com"
license=('unknown')
source=("https://s3.amazonaws.com/live-installer/$_pkgname.tar.gz"
	"btlive")
md5sums=('d0fe631325d6195378c3555f8bbbd450'
	 '7bad98c51617cc85cf291716e9c66cd8')
build() {
	cd $srcdir/$_pkgname
	mkdir -p $pkgdir/usr/bin
	cp $srcdir/$_pkgname/$_pkgname $pkgdir/usr/bin/btlive
        mkdir -p $pkgdir/etc/rc.d
        cp $srcdir/$pkgname $pkgdir/etc/rc.d/
}
