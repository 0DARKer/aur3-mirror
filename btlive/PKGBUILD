pkgname=btlive
pkgver=0.4.11.276
pkgrel=4
pkgdesc="Bittorrent Live is a technology for p2p live streaming, client version"
arch=('i686' 'x86_64')
url="http://live.bittorrent.com"
_watch="http://live-installer-autoupdate.s3.amazonaws.com/latest_version.js"
license=('nonfree')
depends=('python2' 'sensible-utils')
if [ "${CARCH}" = "x86_64" ]; then
    _arch="amd64"
    sha512sums=('ac904c5edf26738670cb6157c4b0295021fdb583aeec808447d94504b6310fe091ae3be81a884caf411ee0ba6d4260246059ffb3fd5b755ba1affe89aa9f8cf9'
    'b2151d059fc5856fea4fecb9a64ce2fc874d9356f0908fbbd66d938e9b7e95d3a65c76024c8c15d7b579d74cd832c0e02bfee3953292345dcfeca19c4374da70')
else
    _arch="i386"
    sha512sums=('e7135fb85f80924e52a1dd7deea326d6ea52c263c322738b47653e91dfd028a872b6908849b382803b56aa873e4b93ded6deac304fa634ebd0acc58dab90d816'
    'b2151d059fc5856fea4fecb9a64ce2fc874d9356f0908fbbd66d938e9b7e95d3a65c76024c8c15d7b579d74cd832c0e02bfee3953292345dcfeca19c4374da70')
fi 
source=("http://live-installer-autoupdate.s3.amazonaws.com/${pkgname}_${pkgver}_${_arch}.deb"
        "${pkgname}.service")
options=('!strip')
build() {
    cd $srcdir
    ar x "${pkgname}_${pkgver}_${_arch}.deb"
    tar xvf data.tar.gz
}
package () {
    mkdir -p $pkgdir/usr/lib
    cp -r "$srcdir/usr" "$pkgdir/"

    # Create btlive service
    install -Dm644 "${srcdir}/btlive.service" "${pkgdir}/usr/lib/systemd/system/btlive.service"
}

