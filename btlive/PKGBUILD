# Maintainer: Jonas Heinrich <onny@project-insanity.org>

pkgname=btlive
pkgver=0.4.10.124
pkgrel=3
pkgdesc="Bittorrent Live is a technology for p2p live streaming, client version"
arch=('i686' 'x86_64')
url="http://live.bittorrent.com"
license=('nonfree')
depends=('python2.6')
if [ "${CARCH}" = "x86_64" ]; then
  _arch="amd64"
  md5sums=('42abeb790e589f9e9cf0c54d18d16e21'
  '7bad98c51617cc85cf291716e9c66cd8')
else
  _arch="i386"
  md5sums=('14b487c11328b03d1b65dbdce17a38fb'
  '7bad98c51617cc85cf291716e9c66cd8')
fi 
source=("http://live-installer-autoupdate.s3.amazonaws.com/${pkgname}_${pkgver}_${_arch}.deb"
	"${pkgname}")
options=('!strip')
build() {
  cd $srcdir
  ar x "${pkgname}_${pkgver}_${_arch}.deb"
  tar xvf data.tar.gz
}
package () {
  mkdir -p $pkgdir/usr/lib
  cp -r "$srcdir/usr" "$pkgdir/"
  mkdir -p $pkgdir/etc/rc.d
  cp $srcdir/$pkgname $pkgdir/etc/rc.d/

}
