#!/bin/bash
# Maintainer: Jorge Barroso <jorge.barroso.11@gmail.com>

pkgname=linux-manga-downloader
pkgver=0.5
pkgrel=1
pkgdesc="The manga downloader for many websites by Kurobyte, now reloaded."
arch=('any')
url="http://code.google.com/p/${pkgname}/"
url="https://github.com/jorge-barroso/${pkgname}/tree/master"
license=('GPL3')
depends=('libnotify' 'gtkdialog' 'wget' 'links' 'zenity')
install=LMD.install
source=(https://github.com/jorge-barroso/linux-manga-downloader/archive/master.zip)

package() {

#Creating Directories

install -m755 -d ${pkgdir}/usr/bin/
install -m755 -d ${pkgdir}/usr/share/{applications,doc/linux-manga-downloader,icons,lmd/langs}

#Installing
    
install -m755 ${srcdir}/linux-manga-downloader-master/usr/bin/*						${pkgdir}/usr/bin/
install -m755 ${srcdir}/linux-manga-downloader-master/usr/share/applications/LMD.desktop 		${pkgdir}/usr/share/applications/LMD.desktop
install -m755 ${srcdir}/linux-manga-downloader-master/usr/share/doc/linux-manga-downloader/copyright 	${pkgdir}/usr/share/doc/linux-manga-downloader/copyright
install -m755 ${srcdir}/linux-manga-downloader-master/usr/share/icons/pen.png 				${pkgdir}/usr/share/icons/pen.png
install -m755 ${srcdir}/linux-manga-downloader-master/usr/share/lmd/langs/ca_CA 			${pkgdir}/usr/share/lmd/langs/ca_CA
install -m755 ${srcdir}/linux-manga-downloader-master/usr/share/lmd/langs/es_ES 			${pkgdir}/usr/share/lmd/langs/es_ES
install -m755 ${srcdir}/linux-manga-downloader-master/usr/share/lmd/langs/en_EN 			${pkgdir}/usr/share/lmd/langs/en_EN

}

# vim:set ts=2 sw=2 et:

sha512sums=('bc67c44ddf63d9007a9f386222fdf1de80d4ec602dd9187981d6872d7881305e2eb58038c74a894d106402c4962fe4c33dbf285f578ba5bad683c47987f79dd5')
