# Contributor: DonVla <donvla@users.sourceforge.net>

pkgname=jack_delay
pkgver=0.2.0
pkgrel=1
pkgdesc="A command line tool to measure JACK audio server latency"
arch=('i686' 'x86_64')
url="http://www.kokkinizita.net/linuxaudio/"
license=('GPL')
provides=('jdelay')
replaces=('jdelay')
depends=('jack-audio-connection-kit')
makedepends=('gcc' )
source=(http://www.kokkinizita.net/linuxaudio/downloads/${pkgname}.tar.bz2)
md5sums=('64a1d7ef7eaea035ae7c8bd88fbe3e07')
sha256sums=('07b79576d2d7ed216fc92f383bdc2c8124596fdebe38fe3657c91cde24b197f1')

build() {
  cd ${srcdir}/${pkgname}
  make || return 1
  install -v -D -m 0755 jack_delay ${pkgdir}/usr/bin/jack_delay
}
