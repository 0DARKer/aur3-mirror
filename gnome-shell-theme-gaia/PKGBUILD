# Author: half-left <http://half-left.deviantart.com/>
# Maintainer: foalsrock <foalsrock at gmail dot com>

pkgname=gnome-shell-theme-gaia
pkgver=20110703
pkgrel=1
pkgdesc="This is a GNOME Shell theme with a Gaia look and design."
url="http://browse.deviantart.com/?qh=&section=&global=1&q=gaia+gnome+shell#/d3fl1nw"
license=('GPL')
arch=('any')
depends=('gnome-shell')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
            'gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://www.deviantart.com/download/207574700/gnome_shell___gaia_by_half_left-d3fl1nw.zip")
DLAGENTS=('http::/usr/bin/wget -c -t 3 --waitretry=3 -H -U Mozilla -O %o %u')
md5sums=('6876877e2d140071aa1b5a18eb5a4da2')

package() {
  mkdir -p ${pkgdir}/usr/share/themes/
  unzip gnome_shell___gaia_by_half_left-d3fl1nw.zip -d ${pkgdir}/usr/share/themes/
  rm ${pkgdir}/usr/share/themes/gs-gaia/gnome-shell/*~
  chmod -R 755 ${pkgdir}/usr/share/themes/gs-gaia/gnome-shell
}

