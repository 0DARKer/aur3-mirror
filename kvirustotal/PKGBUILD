# Contributor: Musikolo <musikolo {at} hotmail [dot] com>

pkgname=kvirustotal
pkgver=0.10
pkgdesc="Online antivirus and anti-phishing tool"
pkgrel=1
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=139065"
license=(GPL3)
groups=('kde' 'security')
makedepends=(cmake automoc4)
depends=(qjson kdelibs)
options=()
source=(http://kde-apps.org/CONTENT/content-files/139065-${pkgname}-${pkgver}.tar.bz2)
sha256sums=('cbfb7073a0aeb7efd9dcffcb18e75bc95e77638fd973dadd85423a94a5977817')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` . || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
