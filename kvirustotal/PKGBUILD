pkgname=kvirustotal
pkgver=0.20.0
pkgdesc="Online antivirus and anti-phishing tool"
pkgrel=1
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=139065"
license=(GPL3)
groups=('kde' 'security')
makedepends=(cmake automoc4)
depends=(qjson kdelibs)
options=()
source=(http://kde-apps.org/CONTENT/content-files/139065-${pkgname}-${pkgver}.tar.bz2)
sha256sums=('bc1dcf5f7f774ae22cd3b9344fbde1b134e1b8c2c4f6ede98c1b80b4b2f6e497')

build() {
  cd "${pkgname}-${pkgver}"
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` .
  make
  make DESTDIR=${pkgdir} install
}
