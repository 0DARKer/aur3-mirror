# Contributor: Musikolo <musikolo {at} hotmail [dot] com>

pkgname=kvirustotal
pkgver=0.9
pkgdesc="Online antivirus and anti-phishing tool"
pkgrel=1
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=139065"
license=(GPL3)
groups=('kde' 'security')
makedepends=(cmake automoc4)
depends=(kdebase-workspace)
options=()
source=(http://kde-apps.org/CONTENT/content-files/139065-${pkgname}-${pkgver}.tar.bz2)
sha256sums=('7f81bf29f3f5ef1f3ce45709f46f6880d20f4ef6dd24a8290df66145d5dde255')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` . || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
