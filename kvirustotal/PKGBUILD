# Contributor: Musikolo <musikolo {at} hotmail [dot] com>

pkgname=kvirustotal
pkgver=0.10.1
pkgdesc="Online antivirus and anti-phishing tool"
pkgrel=1
arch=(i686 x86_64)
url="http://kde-apps.org/content/show.php?content=139065"
license=(GPL3)
groups=('kde' 'security')
makedepends=(cmake automoc4)
depends=(qjson kdelibs)
options=()
source=(http://kde-apps.org/CONTENT/content-files/139065-${pkgname}-${pkgver}.tar.bz2)
#source=(${pkgname}-${pkgver}.tar.bz2)
sha256sums=('53bd72a2c1623eb26dec92b84976f09caef947344e9e9fed052b48c7d8a02c7d')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` . || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
