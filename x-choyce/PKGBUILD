# Maintainer: Jochen Keil jrk+x:choyce@sternenrei.ch

pkgname=x-choyce
pkgver=2013.12.12
pkgrel=0
pkgdesc="A light-weight, Expos√©-like window switcher for X (feat. OpenGL)."
arch=('i686' 'x86_64')
url="https://github.com/jrk-/x-choyce"
license=("BSD")
depends=('mesa' 'libxcb' 'libx11' 'libxrender' 'libxft' \
         'xcb-util' 'xcb-util-keysyms' 'xcb-util-wm' 'xcb-util-image')
provides=('x-choyce')
conflicts=('x-choyce')
source=("https://github.com/jrk-/x-choyce/archive/2013.12.12.tar.gz")

build() {
	cd "$srcdir/x-choyce-2013.12.12"
	make
}

package() {
	cd "$srcdir/x-choyce-2013.12.12"
	install -D -m644 "$srcdir/x-choyce-2013.12.12/LICENSE" \
	                 "$pkgdir/usr/share/licenses/x:choyce/LICENSE"
	make install PREFIX=$pkgdir/usr
}
md5sums=('da0653a8addbc06adb5080ae0047e9db')
