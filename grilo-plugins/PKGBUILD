# Maintainer: Jonathan Lestrelin <zanko@daemontux.org>

pkgname=grilo-plugins
pkgver=0.1.15
pkgrel=1
pkgdesc="Grilo is a framework focused on making media discovery and browsing easy for application developers."
arch=('i686' 'x86_64')
url="http://www.clutter-project.org"
license=('LGPL')
depends=('grilo')
source=("http://ftp.gnome.org/pub/GNOME/sources/$pkgname/0.1/$pkgname-$pkgver.tar.bz2")
sha256sums=('2ceaf7159e16c8253159e8e0493fff4cdddde815e34ad7de5e63aa522210bf45')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm ${pkgdir}/usr/bin/test
}
