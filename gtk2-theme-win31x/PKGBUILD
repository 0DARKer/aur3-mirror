# Maintainer: FadeMind <fademind@gmail.com>

pkgname=gtk2-theme-win31x
pkgver=1.2
pkgrel=1
pkgdesc="Windows 3.1 GTK2 Themes"
arch=('any')
url="http://opendesktop.org/content/show.php?content=169112"
license=('GPL')
depends=('gtk-engines')
source=("${pkgname}-${pkgver}.tar.gz::http://opendesktop.org/CONTENT/content-files/169112-Win3xDefault.tar.gz"
        "LICENSE::https://www.gnu.org/licenses/gpl.txt")
sha256sums=('04fd15f3cd9c30c758ae6d62dbcda332c0cc89c7862daa444b03ec16c902d425'
            '8ceb4b9ee5adedde47b31e975c1d90c73ad27b6b165a1dcd80c7c545eb65b903')

package() {
  install -dm755 "${pkgdir}/usr/share/themes"
  install -Dm644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  cp -rf "${srcdir}/Win3x.Default" "${pkgdir}/usr/share/themes"
  cp -rf "${srcdir}/Win3x.Greyscale" "$pkgdir/usr/share/themes"
  find "${pkgdir}/usr" -type f -name '*rc~' -delete
  find "${pkgdir}/usr" -type f -exec chmod 644 {} \;
  find "${pkgdir}/usr" -type d -exec chmod 755 {} \;
} 
