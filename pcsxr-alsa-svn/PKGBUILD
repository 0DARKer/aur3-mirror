# Contributor: Eugene Yudin aka Infy <Eugene dot Yudin at gmail dot com>

pkgname=pcsxr-alsa-svn
pkgver=41679
pkgrel=1
pkgdesc="A Sony PlayStation emulator based on the PCSX-df Project"
arch=('i686' 'x86_64')
url="http://pcsxr.codeplex.com/"
license=('GPL')
depends=(libgl libglade libxtst libxv alsa-lib sdl)
makedepends=('subversion')
provides=(pcsx)
conflicts=(pcsx pcsx-df pcsxr pcsxr-alsa)
options=(force !libtool)
source=()
md5sums=()

_svntrunk=https://pcsxr.svn.codeplex.com/svn/pcsxr
_svnmod=pcsxr

build() {
  svn co $_svntrunk $_svnmod

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  ./configure --prefix=/usr --enable-opengl --enable-alsa
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
} 
