# Maintainer: Ferenc Sipos <ferenc.sipos.hu at gmail.com>

pkgname=go-openoffice-hu
pkgver=3.2.1rc2
pkgrel=1
pkgdesc="Go-OpenOffice Hungarian language files"
arch=('i686' 'x86_64')
url="http://go-oo.org/discover/"
license=('LGPL3')
depends=('go-openoffice>=3.2.1')
makedepends=('rpmextract')
source=(http://ftp5.gwdg.de/pub/openoffice/extended/${pkgver}/OOo_${pkgver}_20100521_Linux_x86-64_langpack-rpm_hu.tar.gz)

md5sums=('05f4f94f41f090c2ba1deb4d223cf271')

build() {
  cd ${srcdir}/*native_packed*/RPMS

#extract .rpm archives
  for i in *.rpm
    do rpmextract.sh $i
  done

#install openoffice language files
  install -d ${pkgdir}/usr/lib/go-openoffice/basis-link
  cp -R opt/openoffice.org/basis3.2/* ${pkgdir}/usr/lib/go-openoffice/basis-link
  cp -R opt/openoffice.org3/* ${pkgdir}/usr/lib/go-openoffice/basis-link
  chown root:root -R ${pkgdir}/usr/lib/go-openoffice
}
md5sums=('ea7746cd2848dfba70787905824a5308')
md5sums=('205091c8223c706ca6c7936d8dfc198d')
md5sums=('5cff23b164b5c205b2e439360045dc3f')
