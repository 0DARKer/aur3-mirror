pkgname=zisofs-tools
pkgver=1.0.8
pkgrel=6
pkgdesc="Tools for creating transparently compressed ISO files"
url="https://kernel.googlesource.com/pub/scm/fs/zisofs/zisofs-tools/"
arch=('i686' 'x86_64')
license=('GPL')
makedepends=('git')
source=('git+https://git.kernel.org/pub/scm/fs/zisofs/zisofs-tools.git#tag=zisofs-tools-1.0.8')
md5sums=('SKIP')

build() {
  cd "${srcdir}/${pkgname}"
  make
}

package() {
  cd "${srcdir}/${pkgname}"
  make install prefix="${pkgdir}/usr/"
}

