post_install() {
  (getent group  nslcd || groupadd -r nslcd) &> /dev/null
  (getent passwd nslcd ||
    useradd -rMg nslcd -s /bin/false  nslcd) &> /dev/null
}

post_upgrade() {
  post_install $1
}

post_remove() {
  (getent passwd nslcd && userdel  nslcd) &> /dev/null
  (getent group  nslcd && groupdel nslcd) &> /dev/null
}
