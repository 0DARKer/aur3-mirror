pkgname='perl-test-spelling'
pkgver='0.17'
pkgrel='1'
pkgdesc="check for spelling errors in POD files"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.006' 'perl-ipc-run3>=0.044' 'perl-pod-spell>=1.01')
makedepends=('perl-test-tester')
url='http://search.cpan.org/dist/Test-Spelling'
source=('http://search.cpan.org/CPAN/authors/id/S/SA/SARTAK/Test-Spelling-0.17.tar.gz')
md5sums=('dfa3349920894029df4dffb9a66a116b')
sha512sums=('1cac103a69571867761217ec2f52be21a9cf89aa1b32d34878bd8bc1214025181db03f0fbd361e719e75ac7f5f120f920685add405083237bb09be258fe9607b')
_distdir="Test-Spelling-0.17"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

