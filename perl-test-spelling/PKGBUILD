# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-test-spelling'
pkgver='0.11'
pkgrel='1'
pkgdesc="Check for spelling errors in POD"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-pod-spell>=1.01')

url='http://search.cpan.org/dist/Test-Spelling'

source=('http://search.cpan.org/CPAN/authors/id/I/IT/ITUB/Test-Spelling-0.11.tar.gz')
md5sums=('1820e1248bf5dfba6139b6812a5f92ae')

build() {
  DIST_DIR="${srcdir}/Test-Spelling-0.11"
  export PERL_MM_USE_DEFAULT=1
  {

	cd "$DIST_DIR" &&

    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

