# Maintainer: Elena ``of Valhalla'' Grandi <elena.valhalla@gmail.com>
pkgname=pdfposter
pkgver=0.5.0
pkgrel=2
pkgdesc="Print large posters on multiple sheets."
arch=('any')
url="http://pdfposter.origo.ethz.ch/"
license=('GPL3')
depends=('python-pypdf')
makedepends=('python2-distribute')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(http://download.origo.ethz.ch/pdfposter/1095/pdftools.pdfposter-0.5.0.tar.bz2)
md5sums=('2e78427991ef9d830ac2baea82998849')

package() {
  cd "$srcdir/pdftools.pdfposter-$pkgver"
  python2 setup.py install --root=$pkgdir/ --optimize=1
}

