# Maintainer: Igor Kushnir <igorkuo at gmail dot com>
pkgname=venturous
pkgver=0.9
pkgrel=1
pkgdesc="Random playback manager for Audacious"
arch=('i686' 'x86_64')
url="https://github.com/vedgy/venturous"
license=('GPL3')
depends=('qt4' 'audacious')
makedepends=('git' 'cmake')
install=$pkgname.install
_gitname="venturous"
_builddir="build"

prepare() {
  git clone https://github.com/vedgy/venturous.git
  cd "$srcdir/${_gitname}"
  git checkout tags/v0.9
}

build(){
  cd "$srcdir/${_gitname}"
  ./update_and_configure_submodules
  cd ${_builddir}
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd "$srcdir/${_gitname}/${_builddir}"
  make DESTDIR="$pkgdir/" install
}
