# Contributor: RkG

pkgname=kiwijs
pkgver=0.3.1
pkgrel=1
pkgdesc="NodeJS package manager"
arch=('i686' 'x86_64')
url="http://github.com/visionmedia/kiwi"
license=('MIT License')
depends=('rlwrap' 'nodejs')
makedepends=('tar' 'sed' 'awk' 'grep')
source=(http://github.com/visionmedia/kiwi/tarball/0.3.1)
md5sums=('2ae655e5dc3861f3852d7592b7ab9533')

build() {
cd ${srcdir}/visionmedia-kiwi-1c7777e
make DEST=${pkgdir}/usr/bin LIB_DEST=${pkgdir}/usr/lib/node/kiwi DOC_DEST=${pkgdir}/usr/share/doc/kiwi install || return 1
sed -i s_usr/local/etc/kiwi/docs_usr/share/doc/kiwi/docs_g ${pkgdir}/usr/bin/kiwi
}
