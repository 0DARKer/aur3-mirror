# Maintainer: Megameneer (Dennis Holierhoek) <dennis.hh@hotmail.com
pkgname=txttocal
pkgver=1.01
pkgrel=1
pkgdesc="A utility to convert plain text files to text documents for the QWERTY text editor for the TI-83 Plus or TI-84 Plus"
arch=('i686')
url=http://www.ticalc.org/archives/files/fileinfo/213/21372.html
license=('FreeBSD')
depends=()
makedepends=('gcc')
source=(https://archive.org/download/CALTOTXTTXTTOCAL/TXTTOCAL.CPP)
md5sums=('5c878cd9118d8978da208ad0162078c8')
sha256sums=('d0d4cf41a98427b8e0629ef5a75796cad984d22d0aafb676e5ccc4e10097915b')

build() {
  cd ${srcdir}
  g++ TXTTOCAL.CPP -o txttocal
}

package() {
	install ${srcdir}/txttocal -D ${pkgdir}/usr/bin/txttocal
}
