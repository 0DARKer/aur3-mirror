# Maintainer: Oliver Mangold <o.mangold at gmail dot com>
pkgname=bedup
pkgver=0.9.0
pkgrel=1
pkgdesc="Deduplication utility for the BTRFS filesystem"
arch=('i686' 'x86_64')
url="https://github.com/g2p/bedup"
license=('GPL')
depends=('python' 'python-alembic' 'python-contextlib2' 'python-cffi' 'python-sqlalchemy' 'python-xdg' 'python-mako')
makedepends=('gcc' 'python-pip' 'python-distribute')

provides=("${pkgname}")

package() {
  cd "${srcdir}"
  pip install --root "${pkgdir}" --src "${srcdir}/src" --no-deps -I "${pkgname}"=="${pkgver}"
}
