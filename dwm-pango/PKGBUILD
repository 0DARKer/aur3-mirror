# Contributor: Dag Odenhall <dag.odenhall at gmail dot com>
# Contributor: Grigorios Bouzakis <grbzks at gmail dot com>

pkgname=dwm-pango
pkgver=5.9
pkgrel=1
pkgdesc="A dynamic window manager for X - with Pango support"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libxinerama' 'pango')
options=(zipman)
provides=('dwm')
conflicts=('dwm')
install=dwm.install
source=(http://dl.suckless.org/dwm/dwm-$pkgver.tar.gz
	dwm-5.9-pango.patch
	config.h)
md5sums=('2799f885c05817ca112d521bb247f797'
         '4c7a6a6e442c7975bbd603b91799d7be'
         '50231ae0636093533b6824c1dfebc537')

build() {
  cd $srcdir/dwm-$pkgver
  msg "Applying pango patchâ€¦"
  patch -Np1 -i ../dwm-5.9-pango.patch || return 1

  cp $srcdir/config.h config.h

  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11 || return 1
  make PREFIX=/usr DESTDIR=$pkgdir install || return 1

  install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE && \
  install -m644 -D README $pkgdir/usr/share/doc/$pkgname/README
}
