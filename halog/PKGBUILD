pkgname=halog
pkgver=1.3.23
pkgrel=1
pkgdesc="Log analyser for HA Proxy"
arch=('i686' 'x86_64')
url="http://haproxy.1wt.eu"
license=('GPL')
depends=('')
makedepends=('gcc')
backup=()
source=("http://haproxy.1wt.eu/download/1.3/src/haproxy-$pkgver.tar.gz")
md5sums=('4ffe926ccf4f4d53f149290eb001fad5')


build() {
  cd "$srcdir/haproxy-$pkgver/contrib/halog"
  make
  install -D -m755 $srcdir/haproxy-$pkgver/contrib/halog/halog $pkgdir/usr/bin/halog
}

