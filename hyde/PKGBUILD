pkgname=hyde
pkgver=0.8.2
pkgrel=1
pkgdesc="Hyde is a static website generator written in python."
url="http://hyde.github.com"
arch=('any')
license=('MIT')
depends=('python2-yaml' 'python2-argparse' 'python2-jinja2' 'python-markdown' 'python2-pygments' 'typogrify' 'python2-commando' 'python2-smartypants' 'python-markupsafe' 'django')
makedepends=('python2' 'python2-distribute')
replaces=(hyde-git)
source=(http://pypi.python.org/packages/source/h/hyde/hyde-$pkgver.tar.gz)
md5sums=('3d7a6a49f2be3bbbb4b800de9252b53f')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  python2 setup.py install --root=${pkgdir}/ --optimize=1 
}
