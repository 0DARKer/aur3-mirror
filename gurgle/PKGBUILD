# Maintainer: Ecmel Ercan <ecmel.ercan@gmail.com>
pkgname=gurgle
pkgver=1.61
pkgrel=1
pkgdesc="GNU Report Generator Language."
url="http://homepages.inf.ed.ac.uk/timc/gurgle/"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=()
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://homepages.inf.ed.ac.uk/timc/gurgle/${pkgname}-${pkgver}.tar.gz")
md5sums=('d63138cbd2e6ec63ca8c568e92fbe3c9') #generate with 'makepkg -g'
 
build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}
 
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

