# Contributor: Daniel Fiser <danfis (at) danfis (dot) cz>
pkgname=ohcount
pkgver=1.0.1
pkgrel=1
pkgdesc="Ohcount is a source code line counter."
arch=(i686 x86_64)
url="http://labs.ohloh.net/ohcount"
license=('GPL')
depends=(ruby rubygems rake pcre)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
install=
source=(http://labs.ohloh.net/download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('7263b7fd97799dc52312d0b55c23271b')

build() {
  cd $startdir/src/$pkgname-$pkgver
  rake clean
  rake

  mkdir -p $startdir/pkg/usr/lib/ruby/1.8
  mkdir -p $startdir/pkg/usr/bin

  cp -r lib/* $startdir/pkg/usr/lib/ruby/1.8/
  cp bin/ohcount $startdir/pkg/usr/bin/
}
