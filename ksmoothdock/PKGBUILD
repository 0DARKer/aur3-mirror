# Contributor: shamrok <szamrok@gmail.com>

pkgname=ksmoothdock
pkgver=4.5
pkgrel=1
pkgdesc="KSmoothDock is a desktop panel for KDE with smooth zooming"
arch=('i686')
url="http://www.kde-apps.org/content/show.php?content=6585"
license=('GPL')
depends=('kdelibs') 
source=(http://dl.sourceforge.net/sourceforge/ksmoothdock/$pkgname-${pkgver}_automake1.9.tar.gz)
md5sums=('28e3ef38bdc8d8241496924094c68e78')

build() {
  cd $startdir/src/$pkgname
  ./configure --prefix=/opt/kde -C
  make || return 1
  make DESTDIR=$startdir/pkg/ install
}
