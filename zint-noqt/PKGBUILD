pkgname=zint-noqt
_pkgname=zint
pkgver=2.4.0
pkgrel=1
pkgdesc="A barcode encoding library supporting over 50 symbologies. No QT."
url="http://www.zint.org.uk"
license=('GPL')
arch=('i686' 'x86_64')
depends=('openssl' 'zlib')
makedepends=('cmake')
source=(http://downloads.sourceforge.net/$_pkgname/$_pkgname-$pkgver.src.tar.gz)
md5sums=('31fbb05dc45d3c460075096b702cefb0')

build() {
  cd $srcdir/$_pkgname-$pkgver

  sed -i 's|^find_package(Qt4)|#find_package(Qt4)|' CMakeLists.txt

  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make

  make DESTDIR=$pkgdir install
}
