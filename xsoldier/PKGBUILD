# Maintainer: Corrado Primier <ilbardo@gmail.com>

pkgname=xsoldier
pkgver=1.5
pkgrel=1
pkgdesc="X11 shoot-em up game"
arch=('i686' 'x86_64')
url="http://www.interq.or.jp/libra/oohara/xsoldier/"
license=('GPL')
depends=('sdl_image')
source=(http://www.interq.or.jp/libra/oohara/xsoldier/${pkgname}-${pkgver}.tar.gz)
md5sums=('043263edc85f443777e1436a3d9a56a5')

build() {
  cd ${pkgname}-${pkgver}
  ./configure --localstatedir=/var --prefix=/usr --with-sdl --enable-duplicated-scores
  make || return 1
  make prefix=${startdir}/pkg/usr install
}
