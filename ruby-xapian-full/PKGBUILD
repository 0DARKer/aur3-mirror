# Maintainer: David Campbell <davekong@archlinux.us>
pkgname=ruby-xapian-full
pkgver=1.2.3
pkgrel=1
pkgdesc="Xapian bindings for Ruby without dependency on system Xapian library"
arch=('i686' 'x86_64')
url="http://xapian.org"
license=('GPL')
depends=('ruby')
makedepends=('rubygems')
provides=('xapian-ruby-bindings')
conflicts=('xapian-ruby-bindings')
source=("http://gems.rubyforge.org/gems/xapian-full-${pkgver}.gem")
noextract=("xapian-full-${pkgver}.gem")
md5sums=('772947e9b6a03f37a00c361ac7492ad6')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" xapian-full-$pkgver.gem \
  -n "$pkgdir/usr/bin"
}

# vim:set ts=2 sw=2 et:
