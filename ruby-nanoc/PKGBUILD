# Maintainer:   Lucky <archlinux@builds.lucky.li>

pkgname=ruby-nanoc
_gemname="${pkgname#ruby-}"
pkgver=3.4.1
pkgrel=1
pkgdesc="A simple but very flexible static site generator written in Ruby."
url="http://nanoc.stoneship.org"
license=("MIT")
arch=("any")
depends=("ruby")
provides=("ruby-nanoc3")
source=("http://gems.rubyforge.org/gems/${_gemname}-${pkgver}.gem")
noextract=("${_gemname}-${pkgver}.gem")
md5sums=("59329f64f68d4aa1be2bfab66a4045b6")
sha1sums=("ed88ac58e43c7bc62fb9e0f32025c903951fbdab")

package() {
  cd "${srcdir}"
  export HOME="/tmp"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "${pkgdir}${_gemdir}" \
    -n "${pkgdir}/usr/bin" "${_gemname}-${pkgver}.gem"
}
