pkgname=perl-pdf-api2
pkgver=0.73
pkgrel=2
pkgdesc="A Perl module chain to faciliate the creation and modification of high-quality PDF files"
arch=('i686' 'x86_64')
url="http://search.cpan.org/dist/PDF-API2/"
license=('LGPL')
depends=('perl>=5.10.1')
options=('!emptydirs')
source=(http://cpan.org/modules/by-module/PDF/PDF-API2-$pkgver.tar.gz)
md5sums=('848fb727323390128cac85cc11f52de1')

build() {
  cd "$srcdir/PDF-API2-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
}

package() {
  cd "$srcdir/PDF-API2-$pkgver"
  make install DESTDIR="$pkgdir"
}
