# Contributor: Niel Drummond <niel.drummond@grumpytoad.org>
pkgname=joinpdf
pkgver=2.1
pkgrel=1
pkgdesc="joinPDF is a command line tool to join and split PDF files."
arch=('i686' 'x86_64')
url="http://freshmeat.net/projects/joinpdf/"
license=('GPL')
depends=('jre')
provides=('joinpdf')
source=(
	"http://freshmeat.net/redir/joinpdf/50456/url_tgz/joinPDF2.1.tgz"
	"fix_path.diff.gz"
)
md5sums=(
	'457c40ea4eeb58dfcf1d69f9a87de6bd'
	'ed9694d2f078064f864120ec213cfa55'
)

build() {
		cd ${pkgname}${pkgver}
		cat "${startdir}/src/fix_path.diff" | patch -u -p1
		install -D -m755 ./install/joinPDF "${startdir}/pkg/usr/bin/joinPDF" || exit 1
		install -D -m755 ./install/splitPDF "${startdir}/pkg/usr/bin/splitPDF" || exit 1
		install -D -m644 ./install/PDF.jar "${startdir}/pkg/usr/lib/PDF.jar" || exit 1
}

