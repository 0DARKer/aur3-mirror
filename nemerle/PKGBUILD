# Contributor: William Rea <sillywilly@gmail.com>
# Contributor: Fabio 'Feanor' Falcinelli <fabio.falcinelli@gmail.com>

pkgname=nemerle
pkgver=1.0.0.9832
pkgrel=2
pkgdesc="A high-level statically-typed programming language for the .NET platform."
url="http://www.nemerle.org"
license=("nemerle")
depends=('mono')
arch=('i686' 'x86_64')
source=(
"https://github.com/downloads/rsdn/nemerle/NemerleBinaries-net-4.0-v$pkgver.zip"
"https://github.com/rsdn/nemerle/raw/07bf7d157d02317377c38a320147f78a37371940/License.rtf"
"nemerle.sh"
)
md5sums=('b9d896bd08d92b8d321ec0ffc229ac91'
         'df4192fb06900e9b2275bdcba3917b6c'
         '7eedb4d626c1af37ffa789532cf448c4')

package() {
    install -d -m755 "$pkgdir/opt/nemerle"

    ls $srcdir | grep -v NemerleBinaries-net-4.0-v$pkgver.zip |
    grep -v nemerle.sh | grep -v License.rtf | xargs cp -v -t "$pkgdir/opt/nemerle"

    install -D -m755 "$srcdir/nemerle.sh" "$pkgdir/etc/profile.d/nemerle.sh"

    install -D -m644 "License.rtf" "$pkgdir/usr/share/licenses/$pkgname/License.rtf"
}

# vim: set ts=4 sw=4 et:
