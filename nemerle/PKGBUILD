pkgname=nemerle
pkgver=1.0.0.9025
pkgrel=2
pkgdesc="A high-level statically-typed programming language for the .NET platform."
url="http://www.nemerle.org"
license=("nemerle")
depends=('mono')
arch=('i686' 'x86_64')
source=(http://nemerle.googlecode.com/files/NemerleSources-$pkgver.zip)
md5sums=('79acb236244e6ba378c4adbac0a16e07')

build() {
  cd $srcdir
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install

  install -D COPYRIGHT $pkgdir/usr/share/licenses/$pkgname/COPYRIGHT
}
