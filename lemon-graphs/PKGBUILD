# Maintainer: Robert Schwarz <mail@rschwarz.net>
pkgname=lemon-graphs
# lemon was already taken
_pkgname=lemon
pkgver=1.2
pkgrel=1
pkgdesc="C++ template library with datastructures and algorithms for graphs."
arch=(i686 x86_64)
url="http://lemon.cs.elte.hu/trac/lemon"
license=('BOOST')
optdepends=(glpk)
source=(http://lemon.cs.elte.hu/pub/sources/$_pkgname-$pkgver.tar.gz)
md5sums=('2ffd19c6c59b681e2a356e43116cff17')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr
  make
  make check
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

