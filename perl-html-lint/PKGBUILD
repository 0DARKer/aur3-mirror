# CPAN Name  : HTML::Lint
# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
# Generator  : CPANPLUS::Dist::Arch 1.13

pkgname=perl-html-lint
pkgver=2.06
pkgrel=1
pkgdesc="Perl module to check for HTML errors in a string or file"
arch=("any")
url="http://search.cpan.org/dist/HTML-Lint"
license=("PerlArtistic" "GPL")
depends=("perl>=5.6.2" "perl-html-parser>=3.20" "perl-html-tagset>=3.03")
source=(http://search.cpan.org/CPAN/authors/id/P/PE/PETDANCE/HTML-Lint-2.06.tar.gz)
options=(!emptydirs)
md5sums=("60bd27c6ff0bb291a9fead0cd474b75f")

build() {
  cd "$srcdir/HTML-Lint-2.06"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/HTML-Lint-2.06"
  make test
}

package() {
  cd "$srcdir/HTML-Lint-2.06"
  make install DESTDIR="$pkgdir"
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
