# Maintainer: Guillaume ALAUX <Guillaume at ALAUX dot net>
pkgname=scrabble3d
pkgver=3.1.0_22
pkgrel=1
pkgdesc="Highly customizable Scrabble game (classic, SuperScrabble, 3D games)"
arch=('i686' 'x86_64')
url="http://scrabble.game-server.cc/wiki"
license=('GPL')

source=(http://downloads.sourceforge.net/project/scrabble/Main_Program/Linux/Scrabble3D-i386.deb)
if [ ${CARCH} = 'i686' ]; then
  source=(http://downloads.sourceforge.net/project/scrabble/Main_Program/Linux/Scrabble3D-i386.deb)
  md5sums=('fdafea0637039bdc3ac67159032636ed')
elif [ ${CARCH} = 'x86_64' ]; then
  source=(http://downloads.sourceforge.net/project/scrabble/Main_Program/Linux/Scrabble3D-x86_64.deb)
  md5sums=('1f49c5d0bd1a5eca38b205101402162f')
fi

package() {
  cd "${srcdir}"

  ar x Scrabble3D-i386.deb
  tar xf data.tar.gz

  for file in $(find usr -type f); do
    install -Dm755 ${srcdir}/${file} ${pkgdir}/${file}
  done
}

