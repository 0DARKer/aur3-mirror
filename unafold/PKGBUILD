pkgname=unafold
pkgver=3.8
pkgrel=1
pkgdesc="Prediction of Melting Profiles for Nucleic Acids"
arch=(any)
url="http://dinamelt.bioinfo.rpi.edu/"
license=('custom')
depends=('perl>=5.6.1')
optdepends=('freeglut' 'gnuplot' 'gd')
makedepends=('')
source=(http://dinamelt.bioinfo.rpi.edu/download/unafold-3.8.tar.gz)
md5sums=('c1d473c1c4685b7ded51979d8fe4ce0b')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

