# Maintainer: Romain Porte <microjoe@mailoo.org>

pkgname=i3-dtags-git
pkgver=v0.1.2.gf518fbe
pkgrel=1
pkgdesc="A dynamic tag manager using dmenu for i3wm."
arch=('i686' 'x86_64')
url="https://bitbucket.org/MicroJoe/i3-dtags"
license=('custom:WTFPL')
groups=()
depends=('i3-wm' 'dmenu' 'cjson')
makedepends=('git')
checkdepends=()
optdepends=()
provides=('i3-dtags')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('git+https://bitbucket.org/MicroJoe/i3-dtags')
noextract=()
md5sums=('SKIP')

_gitname='i3-dtags'

pkgver() {
	cd "$srcdir/$_gitname"
	git describe --tags | sed 's/-/./g'
}

build() {
	cd "$_gitname"
	make
}

package() {
	cd "$_gitname"

	mkdir -p "$pkgdir/usr/bin"
	make INSTALL_DIR="$pkgdir/usr/bin" install

	install -Dm644 COPYING \
		${pkgdir}/usr/share/licenses/${pkgname}/LICENSE

	make clean
}
