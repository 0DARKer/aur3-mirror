# Contributor: Bartosz Chmura <chmurli at gmail dot com>
# Contributor: Mikkel Kroman <mk at maero dot dk>

pkgname=sublime-text
pkgver=2.2165
pkgrel=1
_build=2165
pkgdesc="sophisticated text editor for code, html and prose"
arch=('i686' 'x86_64')
url="http://www.sublimetext.com/2"
license=('custom')
depends=(libpng12 gtk2)
_arch=' x64'
_archurl='%20x64'

[[ "${CARCH}" = i686 ]] && _arch='' && _archurl=''

source=(
	"http://c758482.r82.cf2.rackcdn.com/Sublime%20Text%202%20Build%20${_build}${_archurl}.tar.bz2"
	sublime-text.desktop
	sublime-text-icon.png
	subl
)

md5sums=(
	'c2ff90eba2de9dafa9a2abf80cc99189'
	'bad90857375f090b3fdf20dbe4fe0e18'
	'd08225e4b82a9de9a8fcbbf2b4aa6c23'
	'268580e79e52eb32bf59dd64241c5fd9'
)

[[ "${CARCH}" = i686 ]] && md5sums[0]='7fa4b3347c519631e31e2a32dc19d1fd'

build () {
	cd ${srcdir}

	install -Dm644 ${pkgname}.desktop \
		${pkgdir}/usr/share/applications/${pkgname}.desktop
	install -Dm644 ${pkgname}-icon.png \
		${pkgdir}/usr/share/pixmaps/${pkgname}-icon.png

	install -dm755 ${pkgdir}/opt
	cp -r "Sublime Text 2" ${pkgdir}/opt/${pkgname}

	install -Dm755 subl ${pkgdir}/usr/bin/subl
	#install -dm 755 ${pkgdir}/usr/bin
	#ln -s /opt/${pkgname}/sublime_text ${pkgdir}/usr/bin/${pkgname}
}
