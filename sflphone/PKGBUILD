pkgname=sflphone
pkgver=1.1.0
pkgrel=3
pkgdesc="SIP/IAX2 compatible softphone"
arch=('i686' 'x86_64')
url="http://www.sflphone.org/"
license=('GPL3')
depends=('libgnomeui' 'libpulse' 'gsm>=0.9.7' 'libzrtpcpp' 'log4c' 'check' 'libyaml' 'libwebkit3' 'celt-0.7' 'dbus-c++' 'gnome-doc-utils' 'libnotify' 'speex')
makedepends=('autoconf' 'astyle')
source=("https://projects.savoirfairelinux.com/attachments/download/3596/${pkgname}-${pkgver}.tar.gz"
  "patch-missing-includes.patch"
  "patch-libzrtp.patch")
sha1sums=('0c1dda574fe33625d5721b2a85ede6f90ace07fa'
  'ed79a6eeb2a9eefd0a74779b806392bd4d87e698'
  'a7f183979923083257e8ab6aa3976359a563b5d0')
options=(!makeflags)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}/
  patch -p1 < ${srcdir}/patch-missing-includes.patch
  patch -p1 < ${srcdir}/patch-libzrtp.patch

  # PJSIP
  cd ${srcdir}/${pkgname}-${pkgver}/daemon/libs/pjproject
  ./configure
  make
  
  # daemon
  cd ${srcdir}/${pkgname}-${pkgver}/daemon
  ./autogen.sh
  ./configure --prefix=/usr
  make
  make prefix="$pkgdir/usr" install

  # Gnome client
  cd "${srcdir}/${pkgname}-${pkgver}/gnome"
  ./autogen.sh
  ./configure --prefix=/usr
  make
  make prefix=${pkgdir}/usr install

  mkdir ${pkgdir}/usr/lib/sflphone/audio
  mv ${pkgdir}/usr/lib/sflphone/codecs/ ${pkgdir}/usr/lib/sflphone/audio/
}

