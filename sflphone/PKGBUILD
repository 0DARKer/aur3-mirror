pkgname=sflphone
pkgver=09192011
pkgrel=1
pkgdesc="SIP/IAX2 compatible softphone"
arch=('i686' 'x86_64')
url="http://www.sflphone.org/"
license=('GPL3')
depends=('libgnomeui' 'pulseaudio' 'gsm>=0.9.7' 'libzrtpcpp' 'log4c' 'check' 'libyaml' 'libwebkit' 'celt-0.7' 'dbus-c++')
makedepends=('autoconf' 'astyle')
source=("http://files.ouranos.be/sflphone-09192011.tar.gz")
md5sums=('c9010f4c4282773a7c6e0a8e486e2633')

build() {
  # PJSIP
  cd "$srcdir/$pkgname/daemon/libs/pjproject"
  ./configure
  make dep && make
  
  # daemon
  cd "$srcdir/$pkgname/daemon"
  ./autogen.sh --prefix=/usr
  ./configure --prefix=/usr
  make
  make prefix="$pkgdir/usr" install

  # Gnome client
  cd "$srcdir/$pkgname/gnome"
  ./autogen.sh --prefix=/usr
  ./configure --prefix=/usr
  make
  make prefix="$pkgdir/usr" install

  mkdir "${pkgdir}/usr/lib/sflphone/audio"
  mv "${pkgdir}/usr/lib/sflphone/codecs/" "${pkgdir}/usr/lib/sflphone/audio/"
}

# vim:set ts=2 sw=2 et:
