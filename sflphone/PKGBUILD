pkgname=sflphone
pkgver=1.0.2
pkgrel=2
pkgdesc="SIP/IAX2 compatible softphone"
arch=('i686' 'x86_64')
url="http://www.sflphone.org/"
license=('GPL3')
depends=('libgnomeui' 'libpulse' 'gsm>=0.9.7' 'libzrtpcpp' 'log4c' 'check' 'libyaml' 'libwebkit3' 'celt-0.7' 'dbus-c++' 'gnome-doc-utils' 'libnotify' 'speex')
makedepends=('autoconf' 'astyle')
source=("https://projects.savoirfairelinux.com/attachments/download/2865/${pkgname}-${pkgver}.tar.gz")
md5sums=('7cd313fe2799b9647cda72839188b0fc')
options=(!makeflags)

build() {
  export MAKEFLAGS="-j1"

  # PJSIP
  cd ${srcdir}/${pkgname}/daemon/libs/pjproject
  ./configure
  make
#  make dep && make
  
  # daemon
  cd ${srcdir}/${pkgname}/daemon
  ./autogen.sh --prefix=/usr
  ./configure --prefix=/usr
  make
  make prefix="$pkgdir/usr" install

  # Gnome client
  cd "${srcdir}/${pkgname}/gnome"
  ./autogen.sh --prefix=/usr
  ./configure --prefix=/usr
  #sed -i 's/LIBS =/LIBS = -libjavascriptcoregtk-3.0/' Makefile
  make
  make prefix=${pkgdir}/usr install

  mkdir ${pkgdir}/usr/lib/sflphone/audio
  mv ${pkgdir}/usr/lib/sflphone/codecs/ ${pkgdir}/usr/lib/sflphone/audio/
}

