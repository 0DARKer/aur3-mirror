pkgname=sflphone
pkgver=1.0.1
pkgrel=1
pkgdesc="SIP/IAX2 compatible softphone"
arch=('i686' 'x86_64')
url="http://www.sflphone.org/"
license=('GPL3')
depends=('libgnomeui' 'pulseaudio' 'gsm>=0.9.7' 'libzrtpcpp' 'log4c' 'check' 'libyaml' 'libwebkit3' 'celt-0.7' 'dbus-c++' 'gnome-doc-utils' 'libnotify' 'speex')
makedepends=('autoconf' 'astyle')
source=("https://projects.savoirfairelinux.com/attachments/download/2607/${pkgname}-${pkgver}.tar.gz")
md5sums=('f097934f1745c90eb522547a44b3db6f')

build() {
  # PJSIP
  cd ${srcdir}/${pkgname}-${pkgver}/daemon/libs/pjproject
  ./configure
  make
#  make dep && make
  
  # daemon
  cd ${srcdir}/${pkgname}-${pkgver}/daemon
  ./autogen.sh --prefix=/usr
  ./configure --prefix=/usr
  make
  make prefix="$pkgdir/usr" install

  # Gnome client
  cd "${srcdir}/${pkgname}-${pkgver}/gnome"
  ./autogen.sh --prefix=/usr
  ./configure --prefix=/usr
  make
  make prefix=${pkgdir}/usr install

  mkdir ${pkgdir}/usr/lib/sflphone/audio
  mv ${pkgdir}/usr/lib/sflphone/codecs/ ${pkgdir}/usr/lib/sflphone/audio/
}

# vim:set ts=2 sw=2 et:
