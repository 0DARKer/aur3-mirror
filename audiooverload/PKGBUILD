# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=audiooverload
pkgver=2.0
pkgrel=2
pkgdesc="Video Game Music Player of vintage consoles and computers."
arch=('i686' 'x86_64')
url="http://www.bannister.org/software/ao.htm"
license=('custom')
groups=('multimedia')
depends=('gtk2')

if [ "${CARCH}" = 'x86_64' ]; then
srcmd5='c2feb1e096de1657ed5598ddd3d0a778'
arch=64
elif  [ "${CARCH}" = 'i686' ]; then 
srcmd5='5c70122536d23b4b4b6c7f5accfb2b5f'
fi

source=(http://www.bannister.org/cgi-bin/download.cgi?aolin$arch
        $pkgname
        $pkgname.desktop
        $pkgname.png)
md5sums=($srcmd5
         '23b040ff983a55311c4929c598c8311f'
         '631acd95de3b4552d87d8cf61f49312e'
         '4835a619599ef4c4d2b48fcdef88d65e')
build() {
    cd $srcdir
    if [ `uname -m` = "x86_64" ]; then   # On 64 bit machines
        tar xfj download.cgi?aolin64
        mv AudioOverloadLinux64 AudioOverloadLinux
    else   # On 32 bit machines
        tar xfj download.cgi?aolin
    fi

    # Start file
    install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname

    # Binary
    install -Dm755 AudioOverloadLinux/ao $pkgdir/usr/bin/ao

    # Desktop icon
    install -Dm644 $pkgname.png $pkgdir/usr/share/pixmaps/$pkgname.png
    install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}