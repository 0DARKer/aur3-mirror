# Maintainer: H.Gökhan Sarı <hsa2@difuzyon.net>
pkgname=gtk-theme-absolute
pkgver=0.7
pkgrel=1
pkgdesc="A murrine based gtk theme which is simple, clean and elegant."
arch=(any)
url="http://gnome-look.org/content/show.php/absolute?content=126326"
license=('GPL')
depends=('gtk-engine-murrine-git')
source=(http://gnome-look.org/CONTENT/content-files/126326-absolute-$pkgver.tar.bz2)
md5sums=('e8af20a867e99c03d0a1cc7e089b3f44')

build() {
  mkdir -p $pkgdir/usr/share/themes/
}

package() {
  cd "$srcdir"

  cp -R absolute/ $pkgdir/usr/share/themes/
  cp -R absolute-alt/ $pkgdir/usr/share/themes/
  cp -R absolute-center/ $pkgdir/usr/share/themes/
  cp -R absolute-center-alt/ $pkgdir/usr/share/themes/
}

# vim:set ts=2 sw=2 et:
