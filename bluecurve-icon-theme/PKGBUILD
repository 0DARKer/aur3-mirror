# Contributor: Shawn Dellysse <sdellysse@radford.edu>
pkgname=bluecurve-icon-theme
pkgver=8.0.2_2.fc10
pkgrel=3
pkgdesc="Red Hat Icons from Fedora 10"
arch=('i686' 'x86_64')
url="http://www.redhat.com"
license=('GPL')
groups=('redhat-artwork')
depends=()
makedepends=('rpmextract' 'intltool')
optdepends=()
source=(http://download.fedora.redhat.com/pub/fedora/linux/releases/10/Everything/source/SRPMS/bluecurve-icon-theme-8.0.2-2.fc10.src.rpm)
md5sums=('c3c91a5ab0d4b18f4e19ba7d2d3064a6')

build() {   
    cd $srcdir
    mkdir ./archives
    cd ./archives
    
    # extracting rpm's
    for x in ../*.rpm; do
        rpmextract.sh $x
    done
    # extracting archives
    for x in ./*.tar.bz2; do
        tar -xvjf $x
    done
    rm -r ./*.tar.bz2
    rm -r ./*.spec

    # installing themes
    for x in ./*/; do
        cd $x
        ./configure --prefix=/usr
        cd ./theme
        make install DESTDIR=$pkgdir || return 1
        cd ../../
    done
    
    # cleaning
    rm -rf ./*/
}
