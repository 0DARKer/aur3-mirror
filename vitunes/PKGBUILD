# Contributor: Markus Cisler <bl1nk@tlen.pl>

pkgname=vitunes
pkgver=0.93
pkgrel=1
pkgdesc="vitunes is a curses-based playlist manager and media player for *nix operating systems with vim-like keybinds."
arch=('i686' 'x86_64')
license=unknown
url="http://www.ryanflannery.net/hacking/vitunes/"
depends=('libid3tag' 'libvorbis' 'libmp4v2' 'mplayer')
makedepends=('patch')
install=vitunes.install
source=('http://www.ryanflannery.net/hacking/vitunes/files/vitunes-0.93.tgz' 'vitunes.patch')

build() {
  cd ${srcdir}/$pkgname
  patch -p1 < ../vitunes.patch
  make || return 1
  make install PREFIX=${pkgdir}/usr || return 1
}
md5sums=('9eca27cd9b4991703298fd82bd677553'
         '2036a1f667503048ee92dd58ba10ff41')
