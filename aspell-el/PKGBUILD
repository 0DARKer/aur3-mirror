pkgname=aspell-el
pkgver=0.60.08
_pkgname=aspell6-el
_pkgver=0.08-0
pkgrel=1
pkgdesc="Greek dictionary for aspell"
arch=('any')
url="http://elspell.math.upatras.gr/"
license=('GPL')
depends=('aspell')
source=(http://elspell.math.upatras.gr/files/aspell/$_pkgname-$_pkgver.tar.bz2)
md5sums=('cf0e677c37ffb64e4b8ebe13acd233c7')

build() {
  cd $srcdir/$_pkgname-$_pkgver  
  ./configure
  make
}

package() {
  cd $srcdir/$_pkgname-$_pkgver
  make DESTDIR=$pkgdir install
}
