# Maintainer: Jameson Pugh <imntreal@gmail.com>
pkgname=openzwave
pkgver=1.0.772
pkgrel=1
pkgdesc="Opensource Z-Wave control"
url="http://www.openzwave.com"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libsystemd')
source=("http://www.openzwave.com/snapshots/${pkgname}-${pkgver}.tar.gz")
sha256sums=('25086949ed72825c6b4fce34a7281962c3e3b28dd6a0cb6b6ef2d8eda2978ddb')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
  make DESTDIR=${pkgdir} PREFIX=/usr instlibdir=usr/lib/ sysconfdir=etc/${pkgname} install
}

