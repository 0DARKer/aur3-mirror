# Maintainer: Jameson Pugh <imntreal@gmail.com>
pkgname=openzwave
pkgver=1.0.791
pkgrel=1
pkgdesc="Opensource Z-Wave control"
url="http://www.openzwave.com"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libsystemd')
source=("http://www.openzwave.com/downloads/${pkgname}-${pkgver}.tar.gz")
sha256sums=('7400a097f0bc1574f61ca8fac3aac5e1c2bf9715efe193ef37890e924c0fb50e')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
  make DESTDIR=${pkgdir} PREFIX=/usr instlibdir=usr/lib/ sysconfdir=etc/${pkgname} install
}

