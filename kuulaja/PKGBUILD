# Maintainer: Jaagup Rep√§n <jrepan@gmail.com>

pkgname=kuulaja
pkgver=1.0
pkgrel=1
pkgdesc="Minimalistic music player that uses tree view widget instead of usual playlist."
arch=(i686 x86_64)
url="http://qt-apps.org/content/show.php/kuulaja?content=154998"
license=('custom:CC0')
depends=(phonon)
source=(http://qt-apps.org/CONTENT/content-files/154998-$pkgname-$pkgver.tar.gz)
md5sums=('f5386ad21eed1ecff50a9bf694b8fe59')

build() {
  cd "$srcdir/$pkgname"
  qmake
  make
}

package() {
  cd "$srcdir/$pkgname"
  install -D kuulaja $pkgdir/usr/bin/kuulaja
  install -D -m 644 license.txt $pkgdir/usr/share/licenses/$pkgname/license.txt
}

# vim:set ts=2 sw=2 et:

