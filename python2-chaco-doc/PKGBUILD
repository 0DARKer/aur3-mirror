# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-chaco-doc
pkgver=3.4.0
_githubtag=98c0116
pkgrel=1
pkgdesc="Documentation for Chaco"
arch=('any')
url="https://github.com/enthought/chaco"
license=('BSD')
makedepends=('python2-distribute' 'python2-setupdocs')
conflicts=('python2-chaco-doc-git' 'python-ets-chaco-doc-svn')
options=(!emptydirs)

source=("https://github.com/enthought/chaco/tarball/${pkgver}")
md5sums=('fa03e0a54a6cf0825c12899ebef0cef8')

build() {
  cd "$srcdir/enthought-chaco-${_githubtag}"

  python2 setup.py build_docs || return 1
}

package() {
  cd "$srcdir/enthought-chaco-${_githubtag}"

  install -d "${pkgdir}"/usr/share/doc/enthought/chaco
  cp -r build/docs/html/* "${pkgdir}"/usr/share/doc/enthought/chaco
}

