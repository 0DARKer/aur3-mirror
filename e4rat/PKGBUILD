# Maintainer: graysky <graysky AT archlinux DOT us>
pkgname=e4rat
pkgver=0.2
pkgrel=2
pkgdesc="Toolset to accelerate the boot process and application startups.  Root partition must be ext4 ONLY!"
arch=('any')
url="http://e4rat.sourceforge.net/"
license=('GPL')
depends=('audit' 'boost')
makedepends=('cmake')
options=(!strip)
install=('readme.install')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgver/e4rat_0.2_src.tar.gz)
build() {
  unset LDFLAGS
  cd "$srcdir/$pkgname-$pkgver"
  cmake . -DCMAKE_BUILD_TYPE=release
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -dm755 "$pkgdir"/var/lib/$pkgname
}
sha256sums=('e494ca2536b4719ddc76306c17e0493e9c8b9b46e826ddd1a15d640bc9bbc38a')
