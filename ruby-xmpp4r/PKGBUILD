pkgname=ruby-xmpp4r
pkgver=0.5
pkgrel=1
pkgdesc="Is an XMPP/Jabber library for Ruby."
arch=(any)
url="http://home.gna.org/xmpp4r/"
license=(custom)
depends=('ruby')
source=(http://gems.rubyforge.org/gems/xmpp4r-$pkgver.gem)
noextract=(xmpp4r-$pkgver.gem)
md5sums=('867bab9d9cf23154dede14b3a16f0d9c')

build() {
cd $srcdir

local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

gem install --ignore-dependencies -i "$pkgdir$_gemdir" xmpp4r-$pkgver.gem
}

