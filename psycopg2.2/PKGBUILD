pkgname=psycopg2.2
pkgver=2.2.2
pkgrel=2
pkgdesc="PostgreSQL database adapter for Python"
arch=('i686' 'x86_64')
url="http://initd.org/psycopg/tarballs/"
license=('GPL')
depends=('python2' 'postgresql-libs')
source=(http://initd.org/psycopg/tarballs/psycopg2-$pkgver.tar.gz)
md5sums=('571af2ad9dfeb522ee5f8553278a4c38')

build() {
  cd "$srcdir/psycopg2-$pkgver"

  # Thanks for the tip, Xentac.
  sed -i 's/,PSYCOPG_DEBUG$//' setup.cfg
  
  python2 setup.py install --prefix=/usr --root=$pkgdir || return 1
}
