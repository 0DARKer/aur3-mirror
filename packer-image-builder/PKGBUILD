# Maintainer: Roman Rader <antigluk@gmail.com>
pkgname=packer-image-builder
pkgver=0.1.5
pkgrel=1
pkgdesc="Tool for creating identical machine images for multiple platforms from a single source configuration."
arch=('x86_64')
url="http://www.packer.io/"
license=('MPL2')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://dl.bintray.com/mitchellh/packer/0.1.5_linux_amd64.zip?direct)
noextract=()
md5sums=('65e1a4e43a655deb83162a4edbc1da53')


package() {
    cd "$srcdir"
    install -d "$pkgdir/usr/local/lib/packer"
    install -m 755 packer* "$pkgdir/usr/local/lib/packer/"
    install -d "$pkgdir/usr/local/bin/"
    cd "$pkgdir"
    find "usr/local/lib/packer/" -maxdepth 1 -printf 'ln -s /%h/%f ./usr/local/bin/%f ;\n' | sh
}
