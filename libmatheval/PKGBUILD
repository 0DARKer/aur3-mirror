# Contributor: Arjun Shankar <arjunsha@gmail.com>

pkgname=libmatheval
pkgver=1.1.7
pkgrel=1
pkgdesc="A library to parse and evaluate symbolic expressions input as text"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/libmatheval/"
license=('GPL3')
depends=('glibc')
makedepends=('guile' 'flex')
options=('!libtool')
source=(ftp://ftp.gnu.org/gnu/libmatheval/libmatheval-1.1.7.tar.gz)
md5sums=('e834271873b73316b92f45b02ad237aa')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
