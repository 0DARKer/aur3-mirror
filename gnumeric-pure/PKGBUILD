# Contributor: bjoern lindig bjoern dot lindig at googlemail dot com

pkgname=gnumeric-pure
pkgver=0.12
pkgrel=1
pkgdesc="A Gnumeric extension which lets you use Pure functions in Gnumeric, the Gnome spreadsheet."
arch=('i686' 'x86_64')
url="http://docs.pure-lang.googlecode.com/hg/pd-pure.html"
depends=('gtkglext' 'gnumeric>=1.9.13' 'pure>=0.36')
license=('custom')
source=(http://pure-lang.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('30995acd395cb45baecc089e7207301c')

build() {
  cd $srcdir/$pkgname-$pkgver
  #make GLDEPS= prefix=/usr
  make prefix=/usr 
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$startdir/pkg install
}
