# Contributor: bjoern lindig bjoern dot lindig at googlemail dot com

pkgname=gnumeric-pure
pkgver=0.13
pkgrel=1
pkgdesc="A Gnumeric extension which lets you use Pure functions in Gnumeric, the Gnome spreadsheet."
arch=('i686' 'x86_64')
url="http://docs.pure-lang.googlecode.com/hg/pd-pure.html"
depends=('gtkglext' 'gnumeric>=1.12.4' 'pure')
license=('custom')
source=(https://bitbucket.org/purelang/pure-lang/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('ce167785e115f0fff92d32e93e42ce5b')

build() {
  cd $srcdir/$pkgname-$pkgver
  #make GLDEPS= prefix=/usr
  make prefix=/usr 
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$startdir/pkg install
}
