# Contributor: Mike Stunes <kc0tqx at gmail dot com>

pkgname=electric
pkgver=8.11
pkgrel=1
pkgdesc="A sophisticated electrical CAD system"
arch=('i686' 'x86_64')
url="http://http://www.gnu.org/software/electric/"
license=('GPL3')
depends=('java-runtime')
source=(http://ftp.gnu.org/pub/gnu/electric/$pkgname-$pkgver.jar \
        electric )
md5sums=('ca3956da57743e448f53f7227fcf5d21'
         '2ee496cb252374cd7595f19173a1bda7')

build() {
    # Move jarfile into /usr/share/java/electric
    install -Dm644 $srcdir/$pkgname-$pkgver.jar $startdir/pkg/usr/share/java/$pkgname/$pkgname.jar

    # Move starter shell script into /usr/bin
    install -Dm755 $srcdir/$pkgname $startdir/pkg/usr/bin/$pkgname
}
