# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: oslik@mail.ru
pkgname=rlplot
pkgver=1.5
pkgrel=1
pkgdesc="Scientific plotting program to produce high quality graphs from data."
url="http://rlplot.sourceforge.net/"
arch=('i686')
license=('GPL')
depends=(qt)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=("http://downloads.sourceforge.net/${pkgname}/${pkgname}_${pkgver}.tar.gz" qt_path.patch)
md5sums=('9e92a4a463ae7373ac737b76e08d8ab7' 'ce93de84b084e8efb94b5a75441ec3c4')
build() {
  cd $startdir/src/$pkgname
  patch -Np0 < ../../qt_path.patch
  make || return 1
  mkdir -p $startdir/pkg/usr/bin $startdir/pkg/usr/man/man1
  install -m 755 rlplot exprlp $startdir/pkg/usr/bin
  install -m 644 rlplot.1 $startdir/pkg/usr/man/man1
}