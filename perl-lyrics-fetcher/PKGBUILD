pkgname='perl-lyrics-fetcher'
pkgver='0.5.1'
pkgrel='1'
pkgdesc="Perl extension to manage fetchers of song lyrics."
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Lyrics-Fetcher'
source=('http://search.cpan.org/CPAN/authors/id/B/BI/BIGPRESH/Lyrics-Fetcher-0.5.1.tar.gz')
md5sums=('a650c82e4cdb96e03d49f70a298aa135')

build() {
  DIST_DIR="${srcdir}/Lyrics-Fetcher-0.5.1"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
