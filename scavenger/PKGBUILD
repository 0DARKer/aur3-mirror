# Maintainer: Gerardo Exequiel Pozzi <vmlinuz386@yahoo.com.ar>

pkgname=scavenger
_pkgname=sdlscav
pkgver=145
_pkgver=${pkgver}_2008_09_20bis
pkgrel=3
pkgdesc="A fun 2D game like Lode Runner. With 193 very good puzzle screens to solve"
arch=('i686' 'x86_64')
url="http://www.xdr.com/dash/scavenger.html"
license=('GPL')
depends=('sdl')
changelog='ChangeLog'
source=(http://downloads.sourceforge.net/sdlscavenger/${_pkgname}-${_pkgver}.tgz
        sdlscav.makefile.patch
        sdlscav.libpath.patch)
md5sums=('6feb0904c272aa5f06476d4e947f9d59'
         '3a5ad83ac3b6bd9cbdf16be07799a842'
         '9224f1f7a9d56c4ccbc4558131f9a3df')

build() {
  cd $srcdir/${_pkgname}-${pkgver}

  patch -i $srcdir/sdlscav.makefile.patch
  patch -i $srcdir/sdlscav.libpath.patch

  make
}

package() {
  cd $srcdir/${_pkgname}-${pkgver}

  make DESTDIR=$pkgdir install
}

