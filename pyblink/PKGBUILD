# Contributor: Wael Nasreddine <gandalf@siemens-mobiles.org>

pkgname=pyblink
pkgver=0.4.3
pkgrel=2
arch=('i686' 'x86_64')
pkgdesc="Pyblink makes pybliographer usuable with Open Office"
depends=('python' 'pybliographer')
url="http://www.sonnet.dk/pyblink/"
license=('GPL')
source=(http://www.sonnet.dk/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('6c7c21b2f21f0bcfead63ad23cd98f6d')

build() {
  cd $srcdir/$pkgname-$pkgver

  ./configure --prefix=/usr \
  	      || return 1 
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
