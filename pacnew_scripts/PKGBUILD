pkgname=pacnew_scripts
pkgver=2012
pkgrel=1
pkgdesc='A collection of scripts to help merge changes in .pacnew files.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pacnew_scripts"
depends=(perl)
source=(
  http://xyne.archlinux.ca/projects/pacnew_scripts/archives/pacnew_scripts-2012.tar.xz
  http://xyne.archlinux.ca/projects/pacnew_scripts/archives/pacnew_scripts-2012.tar.xz.sig
)
sha512sums=(
