source=(
  http://xyne.archlinux.ca/projects/pacnew_scripts/archives/pacnew_scripts-2010.12.23.8843.tar.xz
  http://xyne.archlinux.ca/projects/pacnew_scripts/archives/pacnew_scripts-2010.12.23.8843.tar.xz.sig
)
sha512sums=(
