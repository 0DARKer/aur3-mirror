#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacnew_scripts
pkgver=2010.09.25.2
pkgrel=1
pkgdesc="A collection of scripts to help merge changes in .pacnew files."
depends=('perl')
arch=('any')
license=('GPL')
url="http://xyne.archlinux.ca/projects/${pkgname}"
source=(http://xyne.archlinux.ca/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('a122091d0e7a3543dad3a85818ee93b5')

build() {
  for _script in $(find $srcdir/$pkgname -name 'merge_pacnew_*'); do
    install -D -m755 $_script $pkgdir/usr/bin/$(basename $_script)
  done
}
# vim: set ts=2 sw=2 et:
