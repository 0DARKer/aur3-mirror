md5sums=(
  33d796b8b43b79814e8db6e49aeb7ff3
  e481d7cb2369eabe30b985dfd3ba91c8
)

build () 
{ 
  for _script in "$srcdir/$pkgname-$pkgver/merge_pacnew_"*;
  do
    install -D -m755 "$_script" "$pkgdir"/usr/bin/"$(basename "$_script")";
  done
}


