#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=pacnew_scripts
pkgver=2010.12.23.8843
pkgrel=13
pkgdesc='A collection of scripts to help merge changes in .pacnew files.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/pacnew_scripts"
depends=(perl)
source=(http://xyne.archlinux.ca/projects/pacnew_scripts/archives/pacnew_scripts-2010.12.23.8843.tar.xz)
sha512sums=(b507c0d88114757a30116d2923c9ebcca8a8c4ebc7640c08cfb6341a1d62de520e1cd57e3ca352b4096aef24d9607a36317118ec046a05e76ebc73ad95fb6b99)
md5sums=(12da2e5e325fe0fb0d7963cc079f47a7)

build () 
{ 
  for _script in "$srcdir/$pkgname-$pkgver/merge_pacnew_"*;
  do
    install -D -m755 "$_script" "$pkgdir"/usr/bin/"$(basename "$_script")";
  done
}


