pkgname=lib32-ppl
pkgname32=${pkgname/lib32-/}
pkgver=0.11
pkgrel=2
pkgrel32=1
pkgdesc="A modern library for convex polyhedra and other numerical abstractions - lib32 version"
arch=(x86_64)
url="http://www.cs.unipr.it/ppl"
license=('GPL3')
depends=('lib32-gmp>=5.0')
source=(ftp://ftp.archlinux.org/core/os/i686/${pkgname32}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
md5sums=('a53ad21308fd4a219b6d1e990c9871f6')

build() {
  mkdir -p $startdir/pkg/usr/lib32
  cp -rPf $startdir/src/usr/lib/* $startdir/pkg/usr/lib32
}

