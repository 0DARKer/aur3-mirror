# Maintainer: Lara Maia <lara@craft.net.br>

pkgname=redshift-git
pkgver=1.8.r288.070bf1d
pkgrel=1
pkgdesc='Adjusts the color temperature of your screen according to your surroundings.'
arch=('i686' 'x86_64')
url='http://jonls.dk/redshift/'
license=('GPL3')
depends=('gconf' 'geoclue' 'libxxf86vm')
optdepends=('pygtk: for gtk-redshift'
            'python2-xdg: for gtk-redshift'
            'librsvg: for gtk-redshift')
makedepends=('python2')
install='redshift.install'
source=(git+https://github.com/jonls/redshift)
md5sums=('SKIP')

pkgver() {
  cd "$srcdir"/redshift
  printf "1.8.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd "$srcdir"/redshift
  
  sed -i 's/python/python2/' src/redshift-gtk/redshift-gtk
  ./bootstrap
}

build() {
  cd "$srcdir"/redshift

  PYTHON=/usr/bin/python2 ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"/redshift
  
  make DESTDIR="$pkgdir" install
}
