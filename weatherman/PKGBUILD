# Maintainer: Subrosa <subrosa at darkhorse dot nu>

pkgname=weatherman
pkgver=1.2.1
pkgrel=1
pkgdesc="Display weather information from the command line."
arch=('any')
license=('custom')
depends=("curl")
url=("http://darkhorse.nu/software/weatherman")
source=("http://darkhorse.nu/software/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=("5591b00c9a73b701ea81eacf79401dbb")

build() {
    true
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    install -Dm755 weatherman $pkgdir/usr/bin/weatherman
    install -Dm644 weatherman.1.gz $pkgdir/usr/share/man/man1/weatherman.1.gz
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
} 
