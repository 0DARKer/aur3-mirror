pkgname=utouch-evemu-bzr
pkgver=38
pkgrel=1
pkgdesc="Event Emulation for the uTouch Stack"
arch=(i686 x86_64)
url="https://launchpad.net/utouch-evemu"
license=(GPL)
makedepends=('bzr')
conflicts=('utouch-evemu')
provides=('utouch-evemu')
groups=('unity2d-bzr')

_bzrtrunk=lp:utouch-evemu
_bzrmod=utouch-evemu

build() {
  cd "$srcdir"
  
  if [ -d ${_bzrmod} ]; then
    bzr up ${_bzrmod}
    msg "The local files are updated."
  else
    bzr co ${_bzrtrunk} ${_bzrmod}
  fi
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build 
  fi
  bzr clone  $srcdir/${_bzrmod} $srcdir/build
  cd $srcdir/build
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() { 
  cd ${srcdir}/build
  make DESTDIR="${pkgdir}" install
}
