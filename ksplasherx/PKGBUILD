# Contributor: maddien <martinstitz@gmx.de>
pkgname=ksplasherx
pkgver=2.0beta2
pkgrel=1
pkgdesc="A Splash Screen Editor and Creator for KDE4"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/ksplasher"
license="GPL"
depends=('python' 'pyqt' 'pil')
makedepends=()
conflicts=()
source=(http://www.kde-look.org/CONTENT/content-files/88975-ksplasherx2.0beta2.tar.gz)
md5sums=('8BA51CCA68FD15919F08C44CA7104095')

build() {
  mkdir $startdir/pkg/usr
  mkdir $startdir/pkg/usr/share
  mkdir $startdir/pkg/usr/share/ksplasherx
  mkdir $startdir/pkg/usr/share/applications
  mkdir $startdir/pkg/usr/share/pixmaps
  mkdir $startdir/pkg/usr/bin/
  
  cd ksplasherx
  cp -r * $startdir/pkg/usr/share/ksplasherx
  rm $startdir/pkg/usr/share/ksplasherx/ksplasherx
  cp ksplasherx $startdir/pkg/usr/bin/
  cp ksplasherx.desktop $startdir/pkg/usr/share/applications/ksplasherx.desktop
  cp ksicon.png $startdir/pkg/usr/share/pixmaps/ksicon.png
  chmod +x $startdir/pkg/usr/bin/ksplasherx
}