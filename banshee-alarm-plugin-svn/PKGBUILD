# Maintainer: cdude <cdude996@hotmail.com>
pkgname=banshee-alarm-plugin-svn
pkgver=309
pkgrel=1
pkgdesc="Allows Banshee to serve as an alarm clock."
url="http://banshee-project.org/Plugins"
license="MIT"
depends=('banshee-svn')
makedepends=('subversion')
conflicts=('banshee-alarm-plugin')
provides=('banshee-alarm-plugin')
arch=('i686')

_svntrunk=svn://svn.banshee-project.org/trunk/banshee-alarm-plugin
_svnmod=banshee-alarm-plugi
source=()
md5sums=()


build() {
  export MONO_SHARED_DIR=$startdir/src/.wabi
  mkdir -p $MONO_SHARED_DIR $startdir/pkg/usr/bin $startdir/pkg/usr/lib $startdir/pkg/usr/share

  cd $startdir/src

  svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  cd $_svnmod
  ./autogen.sh --enable-user-plugins --prefix=/usr


  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r ../$_svnmod ../$_svnmod-build
  cd ../$_svnmod-build

  make || return 1
  make DESTDIR=$startdir/pkg/ install

  rm -rf $MONO_SHARED_DIR
  rm -rf $startdir/src/$_svnmod-build
}
