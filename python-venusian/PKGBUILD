# Contributor: Sergey Mastykov <smastykov[at]gmail[dot]com>

pkgname=python-venusian
_pkgname=venusian
pkgver=1.0a8
pkgrel=1
pkgdesc="A library for deferring decorator actions."
arch=('any')
url="https://github.com/Pylons/venusian"
license=('custom:BSD')
depends=('python')
makedepends=('python-distribute')
source=(http://pypi.python.org/packages/source/v/venusian/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('a1b054d4ccf0859a76d900c49f419645279298d5316be3a65a1c00a40719bce0')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}
  python setup.py install --prefix=/usr --root=${pkgdir} --optimize=1
}
