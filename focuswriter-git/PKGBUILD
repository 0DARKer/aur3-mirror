# Contributor: Stefano Bergamini

_pkgname=focuswriter
pkgname=focuswriter-git
pkgver=v1.4.4_617
pkgrel=1
pkgdesc="A simple fullscreen word processor"
arch=('i686' 'x86_64')
url="http://gottcode.org/${_pkgname}/"
license=('GPL3')
#depends=('qt5-base' 'enchant' 'libzip' 'desktop-file-utils')
depends=('qt4' 'enchant' 'libzip' 'desktop-file-utils')
optdepends=('sdl_mixer: typewriter sound effects')
makedepends=('git')
provides=('focuswriter')
conflicts=('focuswriter')
install=${pkgname}.install
source=("git://github.com/gottcode/focuswriter.git#branch=release-1.4")
md5sums=('SKIP')


pkgver() {
  cd "${srcdir}/${_pkgname}"
  echo $(git describe --always | sed 's|-|.|g')_$(git rev-list --count HEAD)
}

build() {
  cd "${srcdir}/${_pkgname}"
#  qmake-qt5 PREFIX=/usr
  qmake-qt4 PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${_pkgname}"
  make INSTALL_ROOT="${pkgdir}/" install
}
