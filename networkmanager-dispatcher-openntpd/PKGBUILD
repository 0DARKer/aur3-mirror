# Maintainer: dan saul <aur@cryingwolf.org>
pkgname=networkmanager-dispatcher-openntpd
pkgver=2009.08.27
pkgrel=1
pkgdesc="Dispatcher Script for openntpd"
arch=(any)
license=('BSD')
url="http://www.slello.com"
depends=('networkmanager' 'openntpd')
source=(10-openntpd)
md5sums=('ee582d20bde6ad19b4bb41ef8f6407f7')

build() {
  cd ${startdir}/pkg
  mkdir -p etc/NetworkManager/dispatcher.d || return 1
  cd etc/NetworkManager/dispatcher.d || return 1
  cp ${startdir}/src/10-openntpd . || return 1
  chmod 700 10-openntpd || return 1
}
