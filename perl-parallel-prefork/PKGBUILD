options=('!emptydirs')
depends=('perl>=5.8.1' 'perl-class-accessor-lite>=0.04' 'perl-list-moreutils' 'perl-proc-wait3>=0.03' 'perl-scope-guard')
makedepends=('perl-test-requires' 'perl-test-sharedfork')
