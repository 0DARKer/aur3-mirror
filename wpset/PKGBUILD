pkgname=wpset
pkgver=hg_latest
pkgrel=3
pkgdesc="Wallpaper setter"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl/wpset"
license=('GPL')
makedepends=('vala')
depends=('imlibsetroot' 'findutils')
source=(https://bitbucket.org/simargl/$pkgname/get/tip.tar.gz)
md5sums=('SKIP')
options=(!strip)

package() {
  cd "$srcdir"/*-$pkgname-*
  make DESTDIR="$pkgdir/" install
}