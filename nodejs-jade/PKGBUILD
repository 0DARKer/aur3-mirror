# Maintainer: forbeslindesay <forbes@lindesay.co.uk>
_npmname=jade
_npmver=1.3.1
pkgname=nodejs-jade # All lowercase
pkgver=1.3.1
pkgrel=1
pkgdesc="Jade template engine"
arch=(any)
url="https://github.com/visionmedia/jade"
license=()
depends=('nodejs' )
optdepends=()
options=( '!strip' )
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$_npmver.tgz)
noextract=($_npmname-$_npmver.tgz)
sha1sums=(7483d848b8714dc50a40da98b0409790b374216b)

package() {
  cd "$srcdir"
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p "$_npmdir"
  cd "$_npmdir"
  npm install -g --user root --prefix "$pkgdir/usr" $_npmname@$_npmver
}

