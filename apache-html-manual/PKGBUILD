# Contributor: Edvinas Valatka <edacval@gmail.com>

pkgname=apache-html-manual
pkgver=2.2.17
pkgrel=1
pkgdesc='Apache manual html pages'
arch=('any')
options=('libtool' '!strip' '!zipman' '!purge' 'docs')
url='http://www.apache.org/dist/httpd'
license=('APACHE')
depends=('apache')
source=(http://www.apache.org/dist/httpd/httpd-${pkgver}.tar.bz2)
md5sums=('16eadc59ea6b38af33874d300973202e')

build() {
        install -d "${pkgdir}/usr/share/httpd"
	cp -a "${srcdir}/httpd-${pkgver}/docs/manual" ${pkgdir}/usr/share/httpd/
}
