# Generator  : CPANPLUS::Dist::Arch 0.17
pkgname='perl-data-visitor'
pkgver='0.27'
pkgrel='1'
pkgdesc="Visitor style traversal of Perl data structures"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-moose>=0.89' 'perl-namespace-clean>=0.08' 'perl-task-weaken' 'perl-test-use-ok' 'perl-tie-toobject>=0.01')
url='http://search.cpan.org/dist/Data-Visitor'
source=('http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/Data-Visitor-0.27.tar.gz')
md5sums=('0fc563bcb409c0733c975e028ea6010d')

build() {
  DIST_DIR="${srcdir}/Data-Visitor-0.27"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
