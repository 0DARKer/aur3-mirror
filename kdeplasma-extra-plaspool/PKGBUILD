pkgname=kdeplasma-extra-plaspool
pkgbuildname=plaspool
pkgver=0.9
pkgrel=1
pkgdesc="A plasma widget to manage printing jobs"
arch=('i686' 'x86_64')
url="http://kde-look.org/content/show.php/Plaspool?content=141018"
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4')
source=("http://skylendar.kde.org/plaspool/$pkgbuildname-$pkgver.tar.bz2")
license=('GPL')
md5sums=('3191a3e91b3f0043b90c38b2e896470f')

build() {

  cd $srcdir/$pkgbuildname #-$pkgver
  mkdir build
  cd build

  cmake ../ -DCMAKE_INSTALL_PREFIX='/usr' ..

  make || return 1
  make DESTDIR=$pkgdir install
}
