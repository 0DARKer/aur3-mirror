pkgname=minisat-git
_pkgbasename=minisat
pkgver=2.2.1.git20121119
pkgrel=1
pkgdesc="A minimalistic, open-source SAT solver"
arch=('i686' 'x86_64')
url="http://minisat.se/"
license=('MIT')
depends=()
makedepends=('git')
provides=('minisat')
conflicts=('minisat')
source=(git+https://github.com/niklasso/minisat.git#commit=cd3a2d653fc073585ef05e2ebb72ab015d851279)
sha256sums=('SKIP')

build() {
  cd "${srcdir}/${_pkgbasename}"

  make config prefix="/usr"
  make
}

package() {
  cd "${srcdir}/${_pkgbasename}"

  make DESTDIR="${pkgdir}" install
}

