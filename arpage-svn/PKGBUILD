# Maintainer: David Adler <david dot jo dot adler at gmail dot com>
pkgname=arpage-svn
pkgver=123
pkgrel=1
pkgdesc="JACK MIDI arpeggiator with JACK Transport sync"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/arpage/"
license=('GPL')
depends=('jack' 'gtkmm' 'libxml++' 'intltool' 'libsigc++')
makedepends=('subversion')
provides=('arpage')
conflicts=('arpage')
_svntrunk=https://arpage.svn.sourceforge.net/svnroot/arpage
_svnmod=arpage

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build/trunk"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
