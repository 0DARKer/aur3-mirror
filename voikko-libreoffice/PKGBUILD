pkgname=voikko-libreoffice
pkgver=3.1.2
pkgrel=1
pkgdesc="Finnish spellchecker, grammar checker and hyphenator extension for libreoffice"
arch=('i686' 'x86_64')
url="http://voikko.sourceforge.net"
license=('GPL3')
depends=('libvoikko' 'libreoffice')
makedepends=('zip' 'libreoffice-sdk=>3.3.0.3-2')
install=voikko-libreoffice.install
source=("http://downloads.sourceforge.net/voikko/openoffice.org-voikko-$pkgver.tar.gz")

build() {
  cd "$srcdir/openoffice.org-voikko-$pkgver"

  . /usr/lib/libreoffice/basis3.3/sdk/setsdkenv_unix.sh
  make oxt
}

package() {
  cd "$srcdir/openoffice.org-voikko-$pkgver/build" 
  mkdir -p $pkgdir/usr/lib/libreoffice/share/extensions/install
  cp voikko.oxt $pkgdir/usr/lib/libreoffice/share/extensions/install/
}

# vim:set ts=2 sw=2 et:
md5sums=('de254b8ea791b7b86d3b2a05786879f2')
