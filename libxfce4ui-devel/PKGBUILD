# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=libxfce4ui-devel
pkgver=4.7.6
pkgrel=1
pkgdesc="a freedesktop.org compliant ui implementation for Xfce (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('glade' 'xfconf-devel' 'gtk2' 'glib2' 'libxfce4util-devel' 'startup-notification')
makedepends=('pkgconfig' 'intltool' 'xfce4-dev-tools-devel')
conflicts=('libxfcegui4-devel' 'libxfcegui4' 'libxfce4ui' 'libxfce4ui-git')
replaces=('libxfcegui4-devel' 'libxfcegui4' 'libxfce4ui' 'libxfce4ui-git')
options=('!libtool')
source=(http://archive.xfce.org/src/xfce/libxfce4ui/4.7/libxfce4ui-$pkgver.tar.bz2)
md5sums=('beccb7eb6fb36bec38b5d140ed42480e')

build() {
  cd ${srcdir}/libxfce4ui-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib \
    --localstatedir=/var --disable-static
  make
}

package() {
	cd ${srcdir}/libxfce4ui-${pkgver}
	make DESTDIR=${pkgdir} install
}
