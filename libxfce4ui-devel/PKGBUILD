# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>
# Contributor: AndyRTR <andyrtr@archlinux.org>

pkgname=libxfce4ui-devel
pkgver=4.8.0
pkgrel=1
pkgdesc="Share commonly used Xfce widgets among the Xfce applications (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=('libxfce4util-devel>=4.8.0' 'gtk2' "xfconf-devel>=4.8.0" 'libsm' 'startup-notification')
makedepends=('intltool' 'gtk-doc' 'glade')
conflicts=('libxfce4ui' 'libxfce4ui-git')
options=('!libtool')
source=(http://archive.xfce.org/src/xfce/libxfce4ui/4.8/libxfce4ui-${pkgver}.tar.bz2)
md5sums=('df9acb3328dff905bd0777b84532b69f')

build() {
  cd ${srcdir}/libxfce4ui-${pkgver}
  ./configure --prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib \
	--localstatedir=/var \
	--disable-static \
	--enable-gtk-doc \
	--disable-debug
  make
}

package() {
	cd ${srcdir}/libxfce4ui-${pkgver}
	make DESTDIR=${pkgdir} install
}
