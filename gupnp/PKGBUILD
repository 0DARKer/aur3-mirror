# Contributor: William Diaz <wdiaz@archlinux.us>

pkgname=gupnp
pkgver=0.14.0
pkgrel=1
pkgdesc="An object-oriented open source framework for creating UPnP devices"
arch=('i686' 'x86_64')
url="http://gupnp.org/"
license=('LGPL')
depends=('gssdp>=0.8.0' 'libxml2')
makedepends=('gobject-introspection>=0.9.10')
options=('!libtool')
source=(http://gupnp.org/sites/all/files/sources/${pkgname}-${pkgver}.tar.gz)
md5sums=('8598922256faa5adb28657d0c10a3e3e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr \
      --disable-static \
      --disable-gtk-doc

  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
