# Maintainer: Subrosa <subrosa at darkhorse dot nu>

pkgname=mupen64plus-video-arachnoid
pkgver=1.99.5
pkgrel=1
pkgdesc="Video plugin for Mupen64Plus v2.0, based on the Arachnoid plugin for Project64."
arch=('i686' 'x86_64')
license=('GPL')
depends=("mupen64plus=$pkgver" "glew")
url=("https://bitbucket.org/wahrhaft/mupen64plus-video-arachnoid")
source=("https://bitbucket.org/wahrhaft/mupen64plus-video-arachnoid/downloads/mupen64plus-video-arachnoid-src-1.99.5.tar.gz")
md5sums=("9e1faae10c1d5e127985f4ccb6f26dd4")

build() {
    cd "$srcdir/$pkgname/projects/unix"
    make clean || return 1
    make all || return 1
    install -Dm644 mupen64plus-video-arachnoid.so $pkgdir/usr/lib/mupen64plus/mupen64plus-video-arachnoid.so
    cd "$srcdir/$pkgname"
    install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
