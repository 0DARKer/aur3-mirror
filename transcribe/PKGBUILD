# Maintainer: Mario Kozjak (archman @ bbs.archlinux.org)
pkgname=transcribe
pkgver=8.31.1
pkgrel=2
pkgdesc="Program used to help transcribe recorded music"
arch=('i686' 'x86_64')
url="http://www.seventhstring.com/"
license=('non-free')
if [ "$CARCH" = "i686" ]; then
    depends=('gstreamer0.10' 'gstreamer0.10-good-plugins' 'libpng12')
elif [ "$CARCH" = "x86_64" ]; then
    depends=('gstreamer0.10' 'gstreamer0.10-good-plugins' 'lib32-libpng12')
fi
provides=('transcribe')

[ "$CARCH" = "i686" ] && source=("http://www.seventhstring.com/xscribe/downlinux/xscsetup.tar.gz")
[ "$CARCH" = "i686" ] && md5sums=("3d0390ffb4c781e4ad0df2f5fe88ebb8")

[ "$CARCH" = "x86_64" ] && source=("http://www.seventhstring.com/xscribe/downlinux64/xsc64setup.tar.gz")
[ "$CARCH" = "x86_64" ] && md5sums=("958bc659772804c4f034f0f36676e2f2")

package() {
  cd "$srcdir/$pkgname"
  mkdir $pkgdir/{usr,usr/bin}
  cp transcribe "$pkgdir/usr/bin/"
}
