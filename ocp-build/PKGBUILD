# Maintainer: Your Name <youremail@domain.com>
pkgname=ocp-build
pkgver=1.99.7
pkgrel=1
pkgdesc="a build system for OCaml applications"
arch=('i686' 'x86_64')
url="http://www.typerex.org/ocp-build.html"
license=('GPL3')
groups=()
depends=('ocaml')
makedepends=('git')
source=('git+https://github.com/OCamlPro/ocp-build.git#tag=ocp-build.1.99.7-beta' 'destdir.patch')
noextract=()
md5sums=('SKIP' '5adb0435ad529302e250e0f1edd9ce8a')

build() {
  cd "$srcdir/$pkgname"

  ./configure --prefix=/usr

  patch -N < "$srcdir/destdir.patch"

  make
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
}
