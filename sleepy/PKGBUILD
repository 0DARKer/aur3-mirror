# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=sleepy
pkgver=0.9.3
_pkgver=093
pkgrel=1
pkgdesc="Script that shutdown/hibernate/suspend/stop Amarok after the last song"
url="http://www.opendesktop.org/content/show.php/?content=113946"
arch=('any')
license=('GPL')
depends=('amarok')
source=("http://opendesktop.org/CONTENT/content-files/113946-${pkgname}${_pkgver}.amarokscript.tar.gz")
md5sums=('4dc8d7e6acfeefb1c8893a6112d613d2')

package() {
  cd ${srcdir}/${pkgname}

  install -d ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}
  install -m644 {action,gui,main,trigger}.js gui.ui script.spec \
    ${pkgdir}/usr/share/apps/amarok/scripts/${pkgname}
}
