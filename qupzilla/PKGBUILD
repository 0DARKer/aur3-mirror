# Maintainer: SpepS <dreamspepser at yahoo dot it>

_name=QupZilla
pkgname=qupzilla
pkgver=1.1.0
pkgrel=1
pkgdesc="Cross-platform QtWebKit browser"
arch=(i686 x86_64)
url="http://www.qupzilla.com/"
license=('GPL3')
depends=('qtwebkit')
install="$pkgname.install"
source=("https://github.com/nowrep/$pkgname/tarball/v$pkgver")
md5sums=('52208ccef4e3f36eea07725afba065af')

build() {
  cd "$srcdir/"*-$_name-*
  qmake QUPZILLA_PREFIX=/usr/
  make
}

package() {
  cd "$srcdir/"*-$_name-*
  make INSTALL_ROOT="$pkgdir/" install
}

