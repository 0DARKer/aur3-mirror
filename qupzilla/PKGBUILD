# Maintainer: SpepS <dreamspepser at yahoo dot it>

_name=QupZilla
pkgname=qupzilla
pkgver=1.1.5
pkgrel=2
pkgdesc="Cross-platform QtWebKit browser"
arch=(i686 x86_64)
url="http://www.qupzilla.com/"
license=('GPL3')
depends=('qtwebkit')
install="$pkgname.install"
source=("https://github.com/nowrep/$pkgname/tarball/v$pkgver")
md5sums=('d97363f29ccce17e3e4569728435eb27')

build() {
  cd "$srcdir/"*-$_name-*

  # enable webgl
  export USE_WEBGL="true"

  qmake QUPZILLA_PREFIX=/usr/
  make
}

package() {
  cd "$srcdir/"*-$_name-*
  make INSTALL_ROOT="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
