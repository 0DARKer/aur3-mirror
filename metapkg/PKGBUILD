# Maintainer: Daniel Escoz <darkhogg[at]gmail[dot]com>
pkgname=metapkg
pkgver=0.2.0
pkgrel=3
pkgdesc="A metapackage PKGBUILD generator."
url="http://github.com/Darkhogg/metapkg"
arch=('any')
license=('GPL3')
depends=('pacman')
optdepends=()
makedepends=()
source=('metapkg.sh' 'metapkg.man')
md5sums=('c309f3443cc4e5954ab2ce9ed1e24f0c'
         'a9ff6a8580a16ae82f9dffe6b01ac7d8')

package() {
  install -D -m755 "$srcdir/metapkg.sh" "$pkgdir/usr/bin/metapkg"
  install -D -m644 "$srcdir/metapkg.man" "$pkgdir/usr/share/man/man1/metapkg.1"
}
