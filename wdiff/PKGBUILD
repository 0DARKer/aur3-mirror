# Maintainer: TDY <tdy@gmx.com>

pkgname=wdiff
pkgver=0.6.5
pkgrel=1
pkgdesc="A wordwise implementation of GNU diff"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/wdiff/"
license=('GPL')
depends=('ncurses')
install=wdiff.install
source=(http://ftp.gnu.org/gnu/wdiff/wdiff-$pkgver.tar.gz)
md5sums=('1828209a14d01ad38c7267985f365cbf')

build() {
  cd "$srcdir/wdiff-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/wdiff-$pkgver"
  make DESTDIR="$pkgdir" install{,-man}
}
