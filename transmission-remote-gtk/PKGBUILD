# Maintainer: PitBall

pkgname=transmission-remote-gtk
pkgver=0.5
pkgrel=1
pkgdesc="GTK application for remote management of the Transmission BitTorrent client via its RPC interface"
arch=(i686 x86_64)
license=('GPL2')
depends=('gtk2' 'json-glib' 'curl' 'libproxy' 'libnotify' 'gconf' 'geoip')
makedepends=('pkgconfig' 'intltool')
install="${pkgname}.install"
options=('!libtool')
url="http://code.google.com/p/transmission-remote-gtk/"
source=("http://transmission-remote-gtk.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
sha1sums=('8a2b36525969bebf1bb9a2deaa5a885ff98c65ea')

build()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  #Configure
  ./configure --prefix=/usr --sysconfdir=/etc \
  --disable-schemas-install \
  --with-gconf-schema-file-dir="/usr/share/gconf/schemas" || return 1
  #Compile
  make || return 1
  #Install
  make DESTDIR="${pkgdir}" install || return 1
}
