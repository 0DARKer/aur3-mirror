pkgname=purple-whatsapp
_pkgname=whatsapp-purple
pkgver=0.3
pkgrel=3
pkgdesc="WhatsApp protocol implementation for libpurple (pidgin)"
arch=('i686' 'x86_64')
url="https://github.com/davidgfnet/whatsapp-purple"
license=('GPLv2')
depends=('libpurple')
optdepends=('pidgin')
provides=('purple-whatsapp')
source=("${_pkgname}-${pkgver}-2.tar.gz"::"https://github.com/davidgfnet/${_pkgname}/archive/v${pkgver}-2.tar.gz")
sha512sums=('3648ad2dca5fc37a5fcb495e850fba1bd72cd17542537da747627748b4cccd9f41a49e3fb96a6abd2231b03c9e24e5ee043c0c945cefa029bd3eebbd198217b2')

build() {
  cd "$srcdir/${_pkgname}-${pkgver}-2"
  make
}

package() {
  cd "$srcdir/${_pkgname}-${pkgver}-2"
  make DESTDIR="${pkgdir}" install
}

