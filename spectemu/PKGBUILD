# Maintainer: Jason Chu <jason@archlinux.org>
pkgname=spectemu
pkgver=0.99.3
pkgrel=3
pkgdesc="Spectemu is an emulator for the 48k ZX Spectrum"
arch=(i686 x86_64)
license=('GPL')
depends=('readline' 'termcap-compat' 'libxxf86vm')
source=(http://www.inf.bme.hu/~mszeredi/spectemu/$pkgname-$pkgver.tar.gz)
md5sums=('67330d27e3f5c9127413bd6f35aa664b')
url="http://www.inf.bme.hu/~mszeredi/spectemu/"

build() {
cd $startdir/src/$pkgname-$pkgver
./configure --prefix=/usr
mkdir -p $startdir/pkg/usr/bin
make || return 1
make -j1 prefix=$startdir/pkg/usr install
}
