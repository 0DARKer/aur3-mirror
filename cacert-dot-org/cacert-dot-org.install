post_install() {
    echo 'now add "mozilla/cacert.org-root.crt" and "mozilla/cacert.org-class3.crt" to /etc/ca-certificates.conf and run: /usr/bin/update-ca-certificates --fresh'
}

post_remove() {
    echo 'remove "mozilla/cacert.org-root.crt" and "mozilla/cacert.org-class3.crt" from /etc/ca-certificates.conf and run: /usr/bin/update-ca-certificates --fresh'
}
