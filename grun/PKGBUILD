# Contributor: nizox <nizzox@gmail.com>
pkgname=grun
pkgver=0.9.3
pkgrel=2
pkgdesc="gRun is a GTK based Run dialog"
arch=(i686 x86_64)
url="http://code.google.com/p/grun/"
license=('GPL')
groups=()
depends=("gtk2")
makedepends=("pkgconfig")
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://grun.googlecode.com/files/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('7788783e5a18221ae591606075d3a8ee') #generate with 'makepkg -g'

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR="$startdir/pkg" install
}

# vim:set ts=2 sw=2 et:
