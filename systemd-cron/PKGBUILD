# Maintainer: Dwayne Bent <dbb@dbb.io>
pkgname=systemd-cron
pkgver=1.2.0
pkgrel=1
pkgdesc='systemd units to run cron scripts'
arch=(any)
url='https://github.com/dbent/systemd-cron'
license=('MIT')
depends=('systemd>=212' 'run-parts')
provides=('cron')
source=("https://github.com/dbent/${pkgname}/archive/v${pkgver}.tar.gz")
sha512sums=('2512df80098834b58881a704ef527f6afeee4003dbb34dba9bd50b6a6c2a4f0c7b0e258c20cf35c79b1d475ec7713428549f881a14bc17e96f3fa17d62965e91')

build() {
    cd "$srcdir/$pkgname-$pkgver"

    ./configure --prefix=/usr --confdir=/etc --enable-yearly --enable-persistent
    make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir" install

    install -d "$pkgdir"/etc/cron.{boot,hourly,daily,weekly,monthly,yearly}
}

