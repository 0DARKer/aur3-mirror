pkgname='perl-html-restrict'
pkgver='2.1.4'
pkgrel='1'
pkgdesc="Strip away unwanted HTML tags and attributes"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-data-dump' 'perl-html-parser' 'perl-moo>=1.001000' 'perl-moox-types-mooselike>=0.23' 'perl-perl6-junction' 'perl-uri')
makedepends=('perl-test-fatal')
url='http://search.cpan.org/dist/HTML-Restrict'
source=('http://search.cpan.org/CPAN/authors/id/O/OA/OALDERS/HTML-Restrict-2.1.4.tar.gz')
