options=('!emptydirs')
depends=('perl-data-dump' 'perl-html-parser' 'perl-moo' 'perl-moox-types-mooselike' 'perl-perl6-junction' 'perl-uri')
makedepends=('perl-test-fatal')
url='http://search.cpan.org/dist/HTML-Restrict'
