# Maintainer: Shanto <shanto@hotmail.com>

pkgname=archipel-client
_pkgname=archipel-gui
_pkgver=beta4
pkgver=0.4.0.beta
pkgrel=1
pkgdesc="A solution to manage and supervise virtual machines. (GUI)"
arch=(any)
url="http://archipelproject.org/"
license=('AGPL')
#depends=()
#makedepends=()
#checkdepends=()
#optdepends=()
#provides=()
#conflicts=()
#replaces=()
#backup=()
options=(!strip)
install=install.sh
#changelog=
source=(
  "http://updates.archipelproject.org/${_pkgname}-${_pkgver}.zip"
  archipel.desktop
  archipel.svg
)
#noextract=()
md5sums=(
  '26edee6a5487d9ef38a87f66fa655525'
  '9e835c8e4ecd271faa48af4fa7139e63'
  'a5fce1cc61847b4a5220a9b1ed4d4f3d'
)

package() {
  _icodir=$pkgdir/usr/share/icons/hicolor/scalable/apps
  _dskdir=$pkgdir/usr/share/applications
  _dstdir=$pkgdir/usr/share/webapps/archipel
  mkdir -p $_dstdir $_icodir $_dskdir
  cp "$srcdir"/archipel.svg $_icodir/
  cp "$srcdir"/archipel.desktop $_dskdir/
  cp -r "$srcdir/$_pkgname-$_pkgver"/* $_dstdir/
}

