pkgname=s3fs
pkgver=1.74
pkgrel=2
pkgdesc="FUSE-based file system backed by Amazon S3"
arch=('i686' 'x86_64')
url="http://code.google.com/p/s3fs/wiki/FuseOverAmazon"
license=('GPL2')
depends=('fuse>=2.8.4' 'glib2' 'libxml++' 'mime-types')
source=(http://s3fs.googlecode.com/files/$pkgname-$pkgver.tar.gz)

sha256sums=('d77d540582fe8287354fd3637e48064f81f6fe80c5f0e0f8253221c56b892b88')

build() {
        cd $srcdir/$pkgname-$pkgver
        ./configure --prefix=/usr || return 1
        make || return 1
}

package() {
	cd $srcdir/$pkgname-$pkgver
        make DESTDIR="$pkgdir/" install	
}
