pkgname=ttf-ms-extrafonts
pkgver=1.0
pkgrel=2
pkgdesc="Extra TTF Fonts from Microsoft"
arch=('any')
url="http://www.microsoft.com/downloads/details.aspx?FamilyId=941B3470-3AE9-4AEE-8F43-C6BB74CD1466&displaylang=en"
license=('custom:proprietary')
depends=('xorg-fonts-encodings' 'xorg-font-utils' 'fontconfig')
makedepends=('cabextract')
install=ttf-ms-extrafonts.install
source=(http://download.microsoft.com/download/9/2/2/9222D67F-7630-4F49-BD26-476B51517FC1/FileFormatConverters.exe)
md5sums=('40c3c9289349265246c29407a3cbf19a')

build() {
	install -d ${pkgdir}/usr/share/fonts/TTF
	cabextract -F O12Conv.cab FileFormatConverters.exe
	cabextract -F *.TTF --lowercase O12Conv.cab
	cabextract -F *.TTC --lowercase O12Conv.cab
	install -m644 ${srcdir}/*.ttf ${pkgdir}/usr/share/fonts/TTF/
	install -m644 ${srcdir}/*.ttc ${pkgdir}/usr/share/fonts/TTF/
}