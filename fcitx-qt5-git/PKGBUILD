# Maintainer: Felix Yan <felixonmars@gmail.com>

pkgname=fcitx-qt5-git
pkgver=20130109
pkgrel=1
pkgdesc="QT5 IM Module for Fcitx"
arch=('i686' 'x86_64')
url="http://code.google.com/p/fcitx"
license=('GPL')
depends=('fcitx' 'qt5')
makedepends=('git' 'cmake' 'intltool')
provides=('fcitx-qt5')
conflicts=('fcitx-qt5')
options=(!strip)
source=()
md5sums=()

_gitroot=git://github.com/fcitx/fcitx-qt5/
_gitname=fcitx-qt5

build() {
  cd "$srcdir"
  msg "Connecting to the GIT server...."

  if [[ -d $srcdir/$_gitname ]] ; then
    cd $_gitname
    git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
    cd $_gitname
  fi

  msg "Starting make..."

  mkdir -p build
  cd build

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Debug ..
  make
}

package() {
  cd "$srcdir/$_gitname/build"
  install -Dm755 src/libfcitxplatforminputcontextplugin.so "$pkgdir/usr/lib/qt5/plugins/platforminputcontexts/libfcitxplatforminputcontextplugin.so"
}
