# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-meteor-git
_gitname=meteor-libretro
pkgver=2013.05.18_e877cf0
pkgrel=1
pkgdesc="libretro implementation of Meteor. (Gameboy Advance)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/meteor-libretro"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')
source=('git://github.com/libretro/meteor-libretro.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname/libretro
  make
}

package()
{
   mkdir -p $pkgdir/usr/lib/libretro
   install -v -m644 $srcdir/$_gitname/libretro/meteor_libretro.so $pkgdir/usr/lib/libretro/libretro-meteor.so
}