# PKGBUILD generated by pacpan
pkgname=perl-cgi-simple
_realname=CGI-Simple
pkgver=1.112
pkgrel=1
pkgdesc="A Simple totally OO CGI interface that is CGI.pm compliant"
arch=(i686 x86_64)
license=('perl')
url="http://search.cpan.org/~andya/CGI-Simple"
options=(!emptydirs)

depends=('perl' 'perl-io-stringy')

#provides=('CGI-Simple')
provides=('cgi-simple=1.112' 'CGI::Simple::Cookie=1.112' 'perl-cgi-simple-cookie=1.112' 'CGI::Simple::Util=1.112' 'perl-cgi-simple-util=1.112' 'CGI::Simple::Standard=1.112' 'perl-cgi-simple-standard=1.112' 'CGI::Simple=1.112' 'perl-cgi-simple=1.112')

source=(http://search.cpan.org/CPAN/authors/id/A/AN/ANDYA/CGI-Simple-1.112.tar.gz)
md5sums=('6a59dd252317b94fffe0aa3fdae206c7')

build() {
  _expected_dir="${srcdir}/${_realname}-${pkgver}"
  if [ -d "$_expected_dir" ]; then
    cd "$_expected_dir"
  else
    _expected_dir="${srcdir}/$(bsdtar -t -f $(basename $source) | head -n1)"
    if [ -d "$_expected_dir" ]; then
      cd "$_expected_dir"
    else
      _makefile=$(find $srcdir -iname Makefile.PL)
      if [ ! -z "$_makefile" ]; then
        _expected_dir=$(dirname $_makefile)
        if [ -d "$_expected_dir" ]; then
          cd "$_expected_dir"
        else
          echo "[1;31mERROR[0m unable to detect source directory"
          echo "[1;34m-->[0m this is often due to CPAN's lack of standard naming conventions"
          echo "[1;34m-->[0m it may be possible to fix this by adjusting the build function in the PKGBUILD"
        fi
      fi
    fi
  fi
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}

