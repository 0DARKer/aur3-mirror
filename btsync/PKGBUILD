# Maintainer: Dongsheng Cai <http://dongsheng.org>
pkgname=btsync
pkgver=1.0.116
pkgrel=1
pkgdesc="Automatically sync files via secure, distributed technology"
license=("custom")
arch=('i686' 'x86_64')
url="http://labs.bittorrent.com/experiments/sync.html"
source=(
  btsync.service
  btsync.json
)

if test "$CARCH" == x86_64; then
    source+=(http://btsync.s3-website-us-east-1.amazonaws.com/btsync_x64.tar.gz)
else
    source+=(http://btsync.s3-website-us-east-1.amazonaws.com/btsync_i386.tar.gz)
fi

package() {
  cd "$srcdir"
  install -dm755 "$pkgdir/usr/share/btsync"
  install -dm755 "$pkgdir/etc/btsync"
  install -dm755 "$pkgdir/var/btsync"

  cp btsync "$pkgdir/usr/share/btsync/"
  cp btsync.json "$pkgdir/etc/btsync/"
	
  # install systemd script
  install -Dm644 btsync.service "$pkgdir/usr/lib/systemd/system/btsync.service"
}

md5sums=('b31cc9039b668d1263b53b11e72907a9'
         '3e941a96f27334c1c89b6f28c5ed92ae')

if test "$CARCH" == x86_64; then
    md5sums+=(bcfa68a27c78251e131ff055b44ba960)
else
    md5sums+=(8ff0f06292618d282b16d3a73dfab3c6)
fi
