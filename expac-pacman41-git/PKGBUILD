# Maintainer: Neer Sighted (neersighted) <neersighted@myopera.com>
# Contributor: Dave Reisner <d@falconindy.com>

pkgname=expac-pacman41-git
pkgver=1.7.gbd8e738
pkgrel=4
pkgdesc='A pacman database extraction utility (development version)'
url='http://github.com/falconindy/expac'
license=('MIT')
arch=('i686' 'x86_64')
_gitname=expac
source=("${_gitname}::git://github.com/falconindy/expac.git#branch=pacman41")
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
depends=('pacman')
makedepends=('git' 'perl')
conflicts=('expac')
provides=('expac')

pkgver() {
  cd "${srcdir}/${_gitname}"

  git describe --always | sed 's/^v//;s/-/./g'
}

build() {
  cd "${srcdir}/${_gitname}"

  # Build it!
  make
}

package() {
  cd "${srcdir}/${_gitname}"

  # Install the program.
  make DESTDIR="${pkgdir}" PREFIX=/usr install
}

# vim: set ts=2 sw=2 et:
