# Maintainer: Neer Sighted (neersighted) <neersighted@myopera.com>

pkgname=expac-pacman41-git
pkgver=1.7.gbd8e738
pkgrel=1
pkgdesc="pacman database extraction utility"
arch=('i686' 'x86_64')
url="http://github.com/falconindy/expac"
license=('MIT')
_gitname=expac
source=("${_gitname}::git://github.com/falconindy/expac.git#branch=pacman41")
md5sums=('SKIP')
sha1sums=('SKIP')
sha256sums=('SKIP')
depends=('pacman')
makedepends=('git' 'perl')
conflicts=('expac')
provides=('expac')

pkgver() {
  cd "${srcdir}/${_gitname}"

  git describe --always | sed 's/^v//;s/-/./g'
}

build() {
  cd "${srcdir}/${_gitname}"

  # Build it!
  make
}

package() {
  cd "${srcdir}/${_gitname}"

  # Install the files.
  make DESTDIR="${pkgdir}" PREFIX=/usr install
}

# vim: set ts=2 sw=2 et:
