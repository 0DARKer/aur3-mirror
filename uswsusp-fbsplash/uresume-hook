# vim:set ft=sh:
run_hook ()
{
	# Wait for any Fbcondecor fade in - may take very long on some broken systems
	(
		i=0
		while [ -n "$( pidof fbcondecor_helper )" ]; do
			if [ $i -ge 50 ]; then
				err "timeout on waiting for fbcondecor_helper to die!"
				exit 1
			fi
			sleep .1
			i=$(( i + 1 ))
		done
	# Try to resume with Fbsplash or on failure, without Fbsplash
	) && /usr/lib/suspend/resume || /usr/lib/suspend/resume -P "splash = n"
}
