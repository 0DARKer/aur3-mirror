# $Id: PKGBUILD 50652 2009-08-30 07:27:09Z tpowa $
# Maintainer : Thomas Baechler <thomas@archlinux.org>

pkgname=nvidia-daslxc
pkgver=190.42
_kernflavor=daslxc
_kernver='2.6.31'
_kernver_limit='2.6.32'
pkgrel=1
pkgdesc="NVIDIA drivers for LXC enabled kernel26-daslxc."
arch=('i686' 'x86_64')
[ "$CARCH" = "i686"   ] && ARCH=x86
[ "$CARCH" = "x86_64" ] && ARCH=x86_64
url="http://www.nvidia.com/"
depends=(
	"kernel26-${_kernflavor}"'>='"${_kernver}"
	"kernel26-${_kernflavor}"'<'"${_kernver_limit}"
	"nvidia-utils=${pkgver}"
)
conflicts=('nvidia-96xx' 'nvidia-173xx')
license=('custom')
install=nvidia.install
source=("http://download.nvidia.com/XFree86/Linux-$ARCH/${pkgver}/NVIDIA-Linux-$ARCH-${pkgver}-pkg0.run")
md5sums=('cf40656600b8a587e82a801f05fa2d95')
[ "$CARCH" = "x86_64" ] && md5sums=('ae431ff849ec01446e6724f9fcfe3bb4')

build() {
	cd $srcdir
	rm -r NVIDIA-Linux-$ARCH-${pkgver}-pkg0 || retrun 1
	sh NVIDIA-Linux-$ARCH-${pkgver}-pkg0.run --extract-only || return 1
	cd NVIDIA-Linux-$ARCH-${pkgver}-pkg0

	cd usr/src/nv/
	ln -s Makefile.kbuild Makefile
	make SYSSRC=/lib/modules/${_kernver}-${_kernflavor}/build module || return 1

	mkdir -p $pkgdir/lib/modules/${_kernver}-${_kernflavor}/kernel/drivers/video/
	install -m644 nvidia.ko $pkgdir/lib/modules/${_kernver}-${_kernflavor}/kernel/drivers/video/

	sed -i -e "s/KERNEL_VERSION='.*'/KERNEL_VERSION='${_kernver}-${_kernflavor}'/" $startdir/nvidia.install
}
