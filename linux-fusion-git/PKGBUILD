# Contributor: Georgios N. Tsalikis <aliverius@tsalikis.net>

_kernver=2.6.27-ARCH
#_kernver=`uname -r`
pkgname=linux-fusion-git
pkgver=20081116
pkgrel=1
pkgdesc="Kernel module providing the IPC for DirectFB multi-app, FusionSound & FusionDale"
arch=(i686 x86_64)
url="http://www.directfb.org"
license="LGPL2"
depends=('kernel26')
makedepends=('git' 'kernel26')
provides=('linux-fusion=8.0.2')
conflicts=('linux-fusion')
install=${pkgname}.install
source=(30-fusion.rules)
md5sums=('db4fee6ec77914c47cdaf5d945faf84d')

_gitroot="git://git.directfb.org/git/directfb/core/linux-fusion.git"
_gitname="linux-fusion"


build() {
  msg "Connecting to git.directfb.org GIT server...."

  if [[ -d $startdir/src/$_gitname ]] ; then
    cd $_gitname
    git pull origin || return 1
    msg "The local files are updated."
  else
    git clone $_gitroot || return 1
  fi

  msg "GIT checkout done"

  # Remove old -build
  rm -rf $startdir/src/$_gitname-build

  cp -r $startdir/src/$_gitname $startdir/src/$_gitname-build
  cd $startdir/src/$_gitname-build

  msg "Starting make..."

 # ./autogen.sh
  make -e SYSROOT=/ || return 1
  install -D -m644 linux/drivers/char/fusion/fusion.ko $startdir/pkg/lib/modules/$_kernver/kernel/drivers/char/fusion/fusion.ko
  install -D -m644 linux/include/linux/fusion.h $startdir/pkg/usr/include/linux/fusion.h
  install -D -m644 $srcdir/30-fusion.rules $startdir/pkg/etc/udev/rules.d/30-fusion.rules
}
