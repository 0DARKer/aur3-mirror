# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=cuevanalinks
pkgver=0.4.3
pkgrel=1
pkgdesc="A program to download movies or series from cuevana.tv"
arch=('i686' 'x86_64')
url="https://bitbucket.org/tin_nqn/cuevanalinks"
license='GPL3'
depends=('plac>=0.8' 'python-pyquery>=0.5' 'python2-progressbar')
source=(http://pypi.python.org/packages/source/C/CuevanaLinks/CuevanaLinks-$pkgver.tar.gz)
md5sums=('8b37ae36799ad559818ee29df6dda04a')
conflicts=('cuevanalinks-hg')

build() {
   cd $srcdir/CuevanaLinks-$pkgver

   # Python2 fix
   sed -i 's_#!/usr/bin/env python_#!/usr/bin/env python2_' setup.py 
   cd $pkgname
   for file in $(find . -name '*.py' -print); do
   sed -i 's_#!/usr/bin/env python_#!/usr/bin/env python2_' $file
   done

   cd ..
   python2 setup.py install --root $pkgdir
}