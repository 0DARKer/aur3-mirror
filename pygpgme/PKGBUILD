# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Caner Candan <caner@candan.fr>
pkgname=pygpgme
pkgver=0.2
pkgrel=1
pkgdesc="A Python module for working with OpenPGP messages"
url="https://launchpad.net/pygpgme"
arch=('i686' 'x86_64')
license=('LGPL')
depends=()
makedepends=('make')
conflicts=()
replaces=()
backup=()
install=
source=(https://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz
	python2.patch)
md5sums=('674e3f5374efa2aaac7ab420810c91e6'
         '80c7cd1f7edb859e68e024443da2435a')
build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p0 -f < ../python2.patch
  make || return 1
  make DESTDIR=$startdir/pkg install
}
