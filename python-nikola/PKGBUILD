# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python-nikola
_pyname=nikola
pkgver=5.5
pkgrel=2
pkgdesc='A static website and blog generator.'
arch=('any')
url='http://nikola.ralsina.com.ar/'
license=('custom')
depends=('python' 'python-doit' 'python-pygments' 'python-docutils'
         'python-pillow' 'python-mako' 'python-unidecode' 'python-lxml'
         'python-yapsy' 'python-mock>=1.0.0' 'python-requests' 'python-markdown'
         'python-jinja' 'python-pyrss2gen' 'python-pytz')
options=(!emptydirs)
source=("https://github.com/ralsina/nikola/archive/5.5.tar.gz")
md5sums=('a8eeda6e59785d7e6a288a7b02a8589c')

package() {
  cd "${srcdir}/${_pyname}-${pkgver}"
  python3 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

