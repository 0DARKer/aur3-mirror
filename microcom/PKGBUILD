pkgname=microcom
pkgver=2014.01.0
pkgrel=1
pkgdesc="terminal emulator"
arch=('i686' 'x86_64')
license=('GPL')
url='http://git.pengutronix.de/?p=tools/microcom.git'
source=('git://git.pengutronix.de/git/tools/microcom.git#commit=d60ac215183f243137b1a8394b97f6b478f152b5')
md5sums=('SKIP')

build() {
	cd "${srcdir}/${pkgname}"
	make
}

package() {
	cd "${srcdir}/${pkgname}"
	install -Dm755 microcom "${pkgdir}/usr/bin/microcom"
}
