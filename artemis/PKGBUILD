# Maintainer: Mick Elliot <micke at sfu dot ca>
# Contributor: Mick Elliot <micke at sfu dot ca>

pkgname=artemis
pkgver=11
origver=11
pkgrel=1
pkgdesc="A free genome viewer and annotation tool"
arch=('i686' 'x86_64')
url="http://www.sanger.ac.uk/Software/Artemis/v11/"
license=('GPL')
depends=('java-runtime' 'perl')
source=(${url}${pkgname}_compiled_v${pkgver}.tar.gz)
md5sums=('a2f149a4b672db210bc4c99295e14b82')

build() {
  cd ${startdir}/src
  install -d ${pkgname} ${startdir}/pkg/opt/${pkgname}
  cp -R ${pkgname}/* ${startdir}/pkg/opt/${pkgname}/
  mkdir -p ${startdir}/pkg/usr/bin/
  ln -s /opt/${pkgname}/art ${startdir}/pkg/usr/bin/art
  ln -s /opt/${pkgname}/act ${startdir}/pkg/usr/bin/act
  ln -s /opt/${pkgname}/dnaplotter ${startdir}/pkg/usr/bin/dnaplotter
}

