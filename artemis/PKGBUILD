# Maintainer: Michael Schubert <mschu.dev at gmail.com>
# Contributor: Mick Elliot <micke at sfu dot ca>

pkgname=artemis
pkgver=13
pkgrel=1
pkgdesc="Artemis is a free genome viewer and annotation tool"
arch=('i686' 'x86_64')
url="http://www.sanger.ac.uk/resources/software/artemis/"
license=('GPL')
depends=('java-runtime' 'perl')
source=("ftp://ftp.sanger.ac.uk/pub4/resources/software/$pkgname/$pkgname.tar.gz")
md5sums=('bea286d5b60d06a682a673e91fb07918')

build() {
  cd $srcdir
  install -d $pkgname $pkgdir/opt/$pkgname
  cp -R $pkgname/* $pkgdir/opt/$pkgname/
  mkdir -p ${startdir}/pkg/usr/bin/
  ln -s /opt/${pkgname}/art $pkgdir/usr/bin/art
  ln -s /opt/${pkgname}/act $pkgdir/usr/bin/act
  ln -s /opt/${pkgname}/dnaplotter $pkgdir/usr/bin/dnaplotter
}
