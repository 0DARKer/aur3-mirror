pkgname=authconfig
pkgver=6.1.17
pkgrel=1
pkgdesc="Graphical and command line utility which can configure a system to be a client for certain networked user information and authentication schemes. This utility can configure authentication to LDAP, Kerberos or Winbind."
arch=('i686' 'x86_64')
url="https://fedorahosted.org/authconfig/"
license=('GPL')
groups=()
depends=()
makedepends=(intltool)
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://fedorahosted.org/releases/a/u/authconfig/$pkgname-$pkgver.tar.bz2)
noextract=()
md5sums=('4f54beebb5c91fdc0fe7d9bdba13526c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -p0 -i ../../configure.patch
  ./configure --prefix=/usr
  make

  install -Dm644 ${srcdir}/${pkgname}-${pkgver}/icons/48x48/system-config-authentication.png ${pkgdir}/usr/share/pixmaps/system-config-authentication.png
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

