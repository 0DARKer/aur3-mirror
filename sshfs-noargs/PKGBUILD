# Maintainer: Nathan Hulse <nat.hulse@gmail.com>
pkgname=sshfs-noargs
pkgver=2.2
pkgrel=1
pkgdesc="SSHFS without clearing/disabling forwarding of X11 and authentication."
arch=('i686' 'x86_64')
url="http://fuse.sourceforge.net/sshfs.html"
license=('GPL')
depends=('fuse' 'glib2' 'openssh')
provides=('sshfs')
conflicts=('sshfs')
makedepends=('pkgconfig')
source=("http://downloads.sourceforge.net/sourceforge/fuse/sshfs-fuse-${pkgver}.tar.gz"
	'sshfs.c.patch')
md5sums=('26e9206eb5169e87e6f95f54bc005a4f'
	'0b7054b7d8fa18d6618abc4e0987067c')

build() {
  patch -p1 < ../sshfs.c.patch
  cd "${srcdir}/sshfs-fuse-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
