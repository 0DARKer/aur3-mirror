# Maintainer: nosada <nosada271@gmail.com>

# This package requires too large space(larger than Arch Linux Live CD!).
# You should check having enough space on your storage.

pkgname=knp
pkgver=4.01
pkgrel=1
pkgdesc="KN parser (Kurohashi-Nagao parser) which detects dependency of Japanese sentences"
url="http://nlp.ist.i.kyoto-u.ac.jp/index.php?KNP"
arch=('x86_64' 'i686')
license=('custom')
depends=('juman>=7.0' 'tinycdb')      # if you want to use named entity extraction, append 'crfpp' in 'depends' line
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()
source=("http://nlp.ist.i.kyoto-u.ac.jp/nl-resource/knp/${pkgname}-${pkgver}.tar.bz2")
md5sums=('a4964bd8f698f0a347298a777791b800')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sh ./configure
  # if you want to use named entity extraction, please uncomment below
  #./configure --with-crf
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}

# vim:set ts=2 sw=2 et:
