# Contributor:  cdude <cdude996@hotmail.com>
pkgname=libipoddevice-svn
pkgver=173
pkgrel=1
pkgdesc="Provides device-level support for Apple's iPods. libipoddevice is written in GObject/C."
url="http://banshee-project.org/Subprojects/Libipoddevice"
license=(LGPL)
depends=('hal>=0.5.6' 'dbus' 'dbus-sharp' 'udev' 'libgtop>=2.12.0' 'pmount' 'eject' )
provides=('libipoddevice')
conflicts=('libipoddevice' 'libipoddevice-cvs')
makedepends=('cvs' 'pkgconfig')
options=(!libtool)
source=()
md5sums=()
arch=('i686')

_svntrunk=http://svn.gnome.org/svn/libipoddevice/trunk
_svnmod=libipoddevice


build() {
  cd $startdir/src
  msg "Connecting to svn.gnome.org SVN server...."
  svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  cd $_svnmod

  ./autogen.sh --prefix=/usr

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
