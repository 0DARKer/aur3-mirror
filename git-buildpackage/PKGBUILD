# Maintainer: Patrick McCarty <pnorcks at gmail dot com>

pkgname=git-buildpackage
pkgver=0.6.0_git20130329
_tagname="debian/$pkgver"
pkgrel=1
pkgdesc="Tools from Debian to integrate the package build system with Git"
arch=(any)
license=('GPL')
depends=('git'
         'man-db'
         'python2'
         'rpm-org')
makedepends=('python2-distribute')
url="https://honk.sigxcpu.org/piki/projects/git-buildpackage/"
source=()
md5sums=()

_gitbase=git://anonscm.debian.org/users/agx/git-buildpackage.git
_gitrepo=git-buildpackage

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitrepo" ]]; then
    cd "$_gitrepo" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitbase" "$_gitrepo"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitrepo-build"
  git clone "$srcdir/$_gitrepo" "$srcdir/$_gitrepo-build"
  cd "$srcdir/$_gitrepo-build"

  git checkout $_tagname

  export WITHOUT_NOSETESTS=1
  python2 setup.py build
}

package() {
  cd "$srcdir/$_gitrepo-build"

  export WITHOUT_NOSETESTS=1
  python2 setup.py install --root="$pkgdir" --prefix=/usr -O1
}

# vim:set ts=2 sw=2 et:
