# contributor: tantalum <tantalum@online.de>
pkgname=guile-cairo
pkgver=1.4.1
pkgrel=1
pkgdesc='Guile Scheme bindings for the cairo graphics library'
arch=(any)
license=('LGPLv3+')
depends=('guile>=1.8.0' 'cairo>=1.2.0')
url=http://home.gna.org/guile-cairo/
source=(http://download.gna.org/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=(70c6d977e7fdffb2c717eb9bff04eec1)
build(){
   cd ${srcdir}/${pkgname}-${pkgver} &&
  ./configure --prefix=/usr &&
  make && make DESTDIR=${pkgdir} install || return 1

  #remove documentation
  if [ -e ${pkgdir}/usr/share/info ];then
    rm ${pkgdir}/usr/share/info/*
    rmdir ${pkgdir}/usr/share/info
  fi
}
