#Contributor: tantalum <mail at thaseph.de>
pkgname=guile-cairo
pkgver=1.4.0
pkgrel=1
pkgdesc='Guile Scheme bindings for the cairo graphics library'
arch=('i686' 'x86_64')
license=('LGPL')
depends=('guile>=1.8.0' 'cairo>=1.2.0')
url=http://home.gna.org/guile-cairo/
source=(http://download.gna.org/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=(196c2800f9816afeca82b1ca7619df63)
build(){
 cd ${srcdir}/${pkgname}-${pkgver} &&
 ./configure --prefix=/usr &&
 make && make DESTDIR=${pkgdir} install || return 1

 #remove documentation
 if [ -e ${pkgdir}/usr/share/info/dir ]; then
  rm ${pkgdir}/usr/share/info/dir
 fi
}
