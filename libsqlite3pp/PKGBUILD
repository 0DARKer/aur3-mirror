# Maintainer: Your Name <youremail@domain.com>
pkgname=libsqlite3pp
pkgver=0.3
pkgrel=1
pkgdesc="SQLite3 C++ API"
arch=(x86 x86_64)
url="https://bitbucket.org/amrhassan/libsqlite3pp"
license=('GPL')
depends=(sqlite3 boost-libs)
makedepends=(cmake sqlite3)
source=(https://bitbucket.org/amrhassan/libsqlite3pp/get/${pkgname}-${pkgver}.tar.gz)

build() {
  cd "$srcdir/amrhassan-${pkgname}-$pkgname-$pkgver"
  
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .
  make
}

package() {
  cd "$srcdir/amrhassan-${pkgname}-$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir/" install
}
md5sums=('d86792e1dc3bb90aa557c67a5255540e')
