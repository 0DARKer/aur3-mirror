# Maintainer: Your Name <youremail@domain.com>
pkgname=libsqlite3pp
pkgver=0.1
pkgrel=1
pkgdesc="SQLite3 C++ API"
arch=(x86 x86_64)
url="https://bitbucket.org/amrhassan/libsqlite3pp"
license=('GPL')
depends=(sqlite3)
makedepends=(cmake)
source=(https://bitbucket.org/amrhassan/libsqlite3pp/get/${pkgver}.tar.gz)
md5sums=('043b7d0c922bfa4346e2fdb875328f62')

build() {
  cd "$srcdir/amrhassan-$pkgname-$pkgver"
  
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .
  make
}

package() {
  cd "$srcdir/amrhassan-$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir/" install
}
