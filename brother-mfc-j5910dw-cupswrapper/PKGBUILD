# Maintainer: Emmanuel GAUDE <gaude.emmanuel@gmail.com>

_manufacturer='brother'
_model='mfc-j5910dw'
_version='1.1.3-1'
_driver='cupswrapper'

pkgname="$_manufacturer-$_model-$_driver"
pkgver=${_version//-/_}
pkgrel=1
pkgdesc="$_driver driver for the $_manufacturer $_model printer"

url="http://welcome.solutions.brother.com/bsc/public_s/id/linux/en/download_prn.html#MFC-J5910DW"
license=('GPL2')

source=("http://www.brother.com/pub/bsc/linux/dlf/${_model//-/}$_driver-$_version.i386.deb")
md5sums=('bf10259e0bad7336f8be3407a560984b')
arch=('i686' 'x86_64')
depends=('cups' 'ghostscript' "${_manufacturer}-${_model}-lpr>=${pkgver}")
install=${pkgname}.install

package() {
  cd $srcdir
  ar x ${_model//-/}$_driver-$_version.i386.deb || return 1

  tar -xzvf $srcdir/data.tar.gz -C $pkgdir || return 1
}

# vim:set ts=2 sw=2 et:
