#               http://blog.viridian-project.de/
pkgname=ede
pkgver=1.2
pkgrel=2
pkgdesc="The lightweight Equinox Desktop Environment"
url="http://ede.sf.net/"
license=('GPL')
arch=('i686' 'x86_64')
depends=("efltk")
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('7bffdd825c6a32f3c99e081f2e3a4c73')
sha1sums=('3ed41a5382c6374ba2c9d8b6fff88e26205c5a0f')

build() {
  cd $srcdir/$pkgname

  ./configure --prefix=/usr

  make || return 1

  install -d $pkgdir/usr/bin
  make prefix=$pkgdir/usr LOCALEDIR=$pkgdir/usr/share/locale install

  find $pkgdir -name "*.la" -exec rm -f '{}' \;
}
