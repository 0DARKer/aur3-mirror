pkgname=aurupload
pkgver=0.7
pkgrel=1
pkgdesc="A very simple AUR uploader"
arch=('any')
url="http://gist.github.com/556538"
license=('unknown')
depends=('bash')
source=('aurupload' 'zsh_completion')
md5sums=('d612469d953f62c86dca21c2bf060ada' '077cbcd825f350a813c900e50d63b1a0')

package() {
  install -Dm0755 "$srcdir"/aurupload "$pkgdir"/usr/bin/aurupload
  install -Dm0755 "$srcdir"/zsh_completion \
      "$pkgdir"/usr/share/zsh/site-functions/_aurupload
}

