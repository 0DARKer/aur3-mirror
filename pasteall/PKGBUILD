# Maintainer: Lara Maia <lara@craft.net.br>
pkgname=pasteall
pkgver=0.3
url=https://github.com/LaraCraft304/Pasteall
pkgrel=3
pkgdesc='A clipboard monitor simple and functional'
arch=(any)
license=('GPL')
depends=('python2' 'libnotify' 'pygtk' 'python2-gobject2' 'python2-notify')
makedepends=('python2-distribute')
source=('https://github.com/LaraCraft304/Pasteall/tarball/v0.3')
md5sums=('4a2c7bd6a8043e85ea6260541826add4')

build() {
	cd "${srcdir}/LaraCraft304-Pasteall-006fefb"
	python2 setup.py build
}

package() {
	cd "${srcdir}/LaraCraft304-Pasteall-006fefb"
	python2 setup.py install --root="${pkgdir}" --optimize=1
	install -dm755 $pkgdir/usr/share/applications/
	echo '''
[Desktop Entry]
Categories=System;
Comment=Pasteall
Exec=pasteall
Icon=pasteall
Name=Pasteall
Terminal=false
Type=Application''' > $pkgdir/usr/share/applications/pasteall.desktop
}
