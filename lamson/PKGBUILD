pkgname=lamson
pkgver=1.1
pkgrel=1
pkgdesc="Modern web application framework design applied to e-mail"
license=("GPL3" "BSD")
url="http://lamsonproject.org/"
depends=('python2' 'python-jinja' 'python2-sqlalchemy' 'python-nose'
         'python-daemon' 'python-chardet' 'python-lockfile')
source=("http://pypi.python.org/packages/source/l/$pkgname/$pkgname-$pkgver.tar.gz")
arch=('any')
options=(!emptydirs)
sha256sums=('7f5f713206030e83164d8025042f2fe4b30b0a7ec69d73806485fd111f52019f')

build() {
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py install --root=$pkgdir --optimize=1
}
