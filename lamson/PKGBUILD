pkgname=lamson
pkgver=1.0
pkgrel=3
pkgdesc="Modern web application framework design applied to e-mail"
license=("GPL3" "BSD")
url="http://lamsonproject.com"
depends=('python2' 'python-jinja' 'python2-sqlalchemy' 'python-nose'
         'python-daemon' 'python-chardet' 'python-lockfile')
source=(http://lamsonproject.com/releases/$pkgname-$pkgver.tar.gz)
arch=('any')
options=(!emptydirs)
md5sums=('2b36fbb2e9e3c07fec5f6d12e0736bda')

build() {
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py install --root=$pkgdir --optimize=1
}
