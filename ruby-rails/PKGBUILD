# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rails
_gemname=${pkgname#ruby-}
pkgver=3.1.1
pkgrel=1
pkgdesc="Is an open source web application framework for the Ruby programming language."
arch=('any')
url="http://www.rubyonrails.org"
license=('MIT')
depends=('ruby' 'rubygems' 'ruby-bundler' 'ruby-railties' 'ruby-actionmailer' 'ruby-actionpack' \
         'ruby-activerecord' 'ruby-activeresource' 'ruby-activesupport')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('44d52cca2af8a110bc7df8698d77fd1f')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${_gemname}-${pkgver}.gem
}
