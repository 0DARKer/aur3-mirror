# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rails
pkgver=3.0.5
pkgrel=1
pkgdesc="Is an open source web application framework for the Ruby programming language."
arch=(any)
url="http://www.rubyonrails.org/"
license=('MIT')
depends=('ruby' 'ruby-bundler' 'ruby-railties' 'ruby-actionmailer' 'ruby-activeresource' \
'ruby-activerecord' 'ruby-actionpack' 'ruby-activesupport')
source=(http://gems.rubyforge.org/gems/rails-$pkgver.gem)
noextract=(rails-$pkgver.gem)
md5sums=('9a3f7fa81351c91b6514731fae0072cc')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" rails-$pkgver.gem
  
  mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
