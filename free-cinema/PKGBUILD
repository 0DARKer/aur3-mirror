pkgname=free-cinema
pkgver=0.2.2
pkgrel=1
pkgdesc="Search, Download movies via Torrent"
url="http://kaveensblog.wordpress.com"
depends=('python2' 'python2-setuptools' 'python2-beautifulsoup4' 'wxpython')
makedepends=('python2-distribute' )
license=('GPL')
arch=('any')
source=('https://dl.dropboxusercontent.com/u/110282351/Free-Cinema-0.2.1.tar.gz')
md5sums=('565385399720c9dbdb30488c156a5dd6')

build() {
    cd $srcdir/Free-Cinema-0.2.1
    python2 setup.py build
}

package() {
    cd $srcdir/Free-Cinema-0.2.1
    python2 setup.py install --root="$pkgdir" --optimize=1
}
