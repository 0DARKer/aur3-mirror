# Maintainer <dotb52 at gmail dot com>

pkgname=cinux-loader
pkgver=2.02
pkgrel=2
pkgdesc="A console application written in C that download automatic files from file hosting services like RapidShare."
arch=('i686' 'x86_64')
url="http://cinux-loader.sourceforge.net/"
license=(GPL3)
depends=(curl pcre openssl-compatibility)
optdepends=('gocr, imagemagick: For non-premium captcha recognition')
source=("http://downloads.sourceforge.net/project/${pkgname}/CinuxLoader/${pkgver}/Binaries/${pkgname}-i686-pc-linux-gnu-${pkgver}.tar.bz2")
md5sums=('b882842e5a59c16339d5d5d4d1c1ae26')

[ "${CARCH}" = "x86_64" ] && source[0]="http://downloads.sourceforge.net/project/${pkgname}/CinuxLoader/${pkgver}/Binaries/${pkgname}-x86_64-pc-linux-gnu-${pkgver}.tar.bz2"
[ "${CARCH}" = "x86_64" ] && md5sums[0]='6249549cb12165e23f12697f252ef9ed'

build() {
    cd ${srcdir}/${pkgname}-${CARCH}-pc-linux-gnu-${pkgver}

    install -d -m755 ${pkgdir}/usr/bin || return 1
    install -d -m755 ${pkgdir}/etc/${pkgname} || return 1
    install -d -m755 ${pkgdir}/usr/share/doc/${pkgname} || return 1
    install -d -m755 ${pkgdir}/usr/share/man/man1 || return 1
    install -m755 ${pkgname} ${pkgdir}/usr/bin/ || return 1
    install -m755 CHANGELOG ${pkgname}.conf.example LICENSE README ${pkgdir}/usr/share/doc/${pkgname} || return 1
    install -m755 ${pkgname}.1 ${pkgdir}/usr/share/man/man1 || return 1
    cp -r captcha_db ${pkgdir}/etc/${pkgname}/ || return 1
}
