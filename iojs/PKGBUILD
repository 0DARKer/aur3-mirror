# Maintainer: Josip Janzic <josip.janzic@gmail.com>
pkgname=iojs
pkgver=1.0.2
pkgrel=1
pkgdesc="Bringing ES6 to the Node Community!"
arch=('i686' 'x86_64')
url="https://iojs.org/"
license=('MIT')
depends=('openssl')
optdepends=('python2: for node-gyp')
provides=('nodejs')
conflicts=('nodejs')
options=('!emptydirs')

_arch=x64
[[ $CARCH = i686 ]] && _arch=x86

source=("https://iojs.org/dist/v${pkgver}/iojs-v${pkgver}-linux-${_arch}.tar.xz")

sha256sums=('00107136673756fa5284f2d8bedc3059a648e22b3a9a9aec6f78a2322b7cbadb')
[[ $CARCH = i686 ]] && sha256sums[0]='a742aa04920b7efe2ecfa44ab3a60b507c0ea3ddca64ede9c3bd4eaa003b1ddb'

package() {
	cd "iojs-v${pkgver}-linux-${_arch}"

	mkdir "$pkgdir/usr/"

	rm -rf ./share/systemtap
	mv ./{bin,include,lib,share} "$pkgdir/usr/"

	install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/iojs/LICENSE
}
