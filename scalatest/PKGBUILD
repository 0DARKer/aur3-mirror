# Maintainer: Robert Welin <robert dot welin at gmail dot com>
pkgname=scalatest
pkgver=1.6.1
pkgrel=2
pkgdesc="An open-source test framework for the Java Platform."
arch=(any)
url="http://www.scalatest.org/"
license=('Apache')
depends=('java-runtime')
optdepends=('scala')
source=(http://www.scalatest.org/releases/$pkgname-$pkgver.zip)
md5sums=('6a46c03a326916c419a32ce6e3cb25e7')
package() {
    install -d $pkgdir/usr/share/$pkgname
    install -d $pkgdir/usr/share/doc/$pkgname
    cp -r $srcdir/$pkgname-$pkgver/doc/* $pkgdir/usr/share/doc/$pkgname/
    cp -r $srcdir/$pkgname-$pkgver/NOTICE $pkgdir/usr/share/$pkgname
    cp -r $srcdir/$pkgname-$pkgver/README.txt $pkgdir/usr/share/$pkgname
    cp -r $srcdir/$pkgname-$pkgver/src $pkgdir/usr/share/$pkgname
    install -Dm644 $srcdir/$pkgname-$pkgver/$pkgname-$pkgver.jar $pkgdir/usr/lib/$pkgname-$pkgver.jar
    install -Dm644 $srcdir/$pkgname-$pkgver/$pkgname-$pkgver-tests.jar $pkgdir/usr/lib/$pkgname-$pkgver-tests.jar
}
