pkgname=scalatest
pkgver=1.6.1
pkgrel=1
pkgdesc="ScalaTest is an open-source test framework for the Java Platform."
arch=(any)
url="http://www.scalatest.org/"
license=('Apache')
depends=('java-runtime')
source=(http://www.scalatest.org/releases/$pkgname-$pkgver.zip)
md5sums=('6a46c03a326916c419a32ce6e3cb25e7')
package() {
    install -d $pkgdir/usr/share/$pkgname
    cp -r $srcdir/$pkgname-$pkgver/* $pkgdir/usr/share/$pkgname/
}
