post_install() {
  [[ -x /usr/bin/gtk-update-icon-cache ]] && gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  [[ -x /usr/bin/uupdate-desktop-database ]] && pdate-desktop-database -q
  [[ -x /usr/bin/update-mime-database ]] && update-mime-database usr/share/mime &> /dev/null
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}
