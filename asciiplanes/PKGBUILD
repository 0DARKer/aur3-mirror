# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=asciiplanes
pkgver=3.9f7dd69
pkgrel=1
pkgdesc="Find the planes' positions on a grid. (text-based game)"
arch=('any')
url="https://github.com/trizen/asciiplanes"
license=('GPLv3')

makedepends=('git')
depends=('sidef-git' 'perl-text-asciitable')

source=('git://github.com/trizen/asciiplanes.git')
md5sums=('SKIP')

pkgver() {
  cd $pkgname
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

package() {
  cd $pkgname
  install -m 755 -D "$pkgname.sf" "$pkgdir/usr/bin/$pkgname"
}
