pkgname=libsocklib
pkgver=3.0.0
pkgrel=1
pkgdesc="A C library providing a selection of socket functions"
arch=('i686' 'x86_64')
url="http://www.wolf-software.net/Libraries/socklib/"
license=('GPL3')
depends=('liblogfile')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('64ec86237e91f1793d23d89df7012adf')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
