pkgname=libsocklib
pkgver=3.0.0
pkgrel=1.1
pkgdesc="A C library providing a selection of socket functions"
arch=('i686' 'x86_64')
url="http://www.wolf-software.com/Libraries/socklib"
license=('GPL3')
depends=('liblogfile')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('ee0561d14992b97e9078111d126dc8fd')

build() {
  cd $pkgname-$pkgver

  sed 's|-Werror||g' -i configure

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
