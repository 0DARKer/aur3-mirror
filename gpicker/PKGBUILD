pkgname=gpicker
pkgver=2.2
pkgrel=1
pkgdesc="A program that allows you to quickly and conveniently pick file in a (possibly very large) project"
arch=(i686 x86_64)
license=(GPL3)
url=http://savannah.nongnu.org/projects/$pkgname
depends=(gtk2)
options=(!libtool)
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
sha256sums=('a582c7d90f112b3d3d1bcc10d1a0ef9f658acbfb83ab031acff49864abbb4d1a')
sha512sums=('f5e86e0b73fce56bcd534def8822ca95898ea060351955fbd5ae952ef6e4edbbf09842cf1908fb4026113c44194aa4aa74a5eafa2051bc0e5f02907a9fd81936')

build() {
    cd "$srcdir"/$pkgname-$pkgver/
    ./configure --prefix=/usr
    make
}

package() {
    cd "$srcdir"/$pkgname-$pkgver/
    make DESTDIR="$pkgdir" install
}
