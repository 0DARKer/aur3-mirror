# Maintainer : Vassilis Palassopoulos <palasso [at] gmail [dot] com>

pkgname=latchbox
pkgver=1.0.3.0
pkgrel=3
pkgdesc='A Console Based Password Management Program'
arch=('i686' 'x86_64')
url='http://pariahvi.com/projects/latchbox'
license=('BSD')
optdepends=('xclip: provides clipboard functionality')
if [ $CARCH == 'i686' ] ; then
    _ARCH='386'
elif [ $CARCH == 'x86_64' ] ; then
    _ARCH='amd64'
fi
source_i686+=("http://pariahvi.com/files/latchbox$pkgver.linux-386.tar.gz")
source_x86_64+=("http://pariahvi.com/files/latchbox$pkgver.linux-amd64.tar.gz")
sha512sums_i686=('9f8239fc5dc4104a16831abffec0f6a14f904d31a962d8a4ef967ca6a4fb941bef5b6c20b9c395b2d77124478bc788ee427ef168c66b7c0ccc994e2b6f6e8f24')
sha512sums_x86_64=('d96a08bc3dffbfe9e27d00c202502fc303ee6b8b00059f2ced0e8f26f130b2e93b2bd686b78b6cec68bc94c73d3eed2463c1fb3639c8c16cd61abc0639ad1060')

package() {
    cd ${srcdir}/$pkgname$pkgver.linux-$_ARCH
    install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
    install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
