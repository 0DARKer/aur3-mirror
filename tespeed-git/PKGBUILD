pkgname=tespeed-git
pkgver=20130326
pkgrel=3
pkgdesc="Terminal network speed test that uses servers from Speedtest.net. It uses nearest test server but can also use one manually specified by the user."
arch=('any')

url="https://github.com/Janhouse/tespeed"
license=('MIT')
depends=('python2' 'python2-lxml')
source=('https://raw.github.com/Janhouse/tespeed/f69ae3e6975f5ffab4950c8fb4fef07e12ddc935/tespeed.py')
md5sums=('97ad7a033be168bcc970c1e02061c315')

package() {
  install -Dm755 tespeed.py "$pkgdir/usr/bin/tespeed"
}
