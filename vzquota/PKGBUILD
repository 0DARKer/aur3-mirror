# Contributor: Jonny Gerold <fsk141@gmail.com>

pkgname=vzquota
pkgver=3.0.12
pkgrel=5
pkgdesc="OpenVZ disk quota control utility"
arch=("i686" "x86_64") 
url="http://openvz.org"
license=("GPL")
makedepends=("gcc")
source=("http://download.openvz.org/utils/${pkgname}/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2"
        "redefined_error.patch")
md5sums=("d45e49f90c38c70a46f08deecb387377"
         "8f7c9c81351289147b4a05ec0a581740")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  patch -uNp1 -i "${srcdir}/redefined_error.patch"

  make
  make DESTDIR="${pkgdir}" install
}
