# Contributor: Jan Ka≈°par <jan.kaspar at gmail dot com>
pkgname=castor-client
pkgver=2.1.9
pkgrel=7
pkgdesc="Client for CERN Advanced STORage manager."
arch=('i686' 'x86_64')
url="http://castor.web.cern.ch/castor/"
license=('EU DataGrid software license')
depends=()
makedepends=('make' 'makedepend')
source=("http://cern.ch/castor/DIST/CERN/savannah/CASTOR.pkg/$pkgver-$pkgrel/castor-$pkgver-$pkgrel.tar.gz")
md5sums=('d4a06c155cd144b9c8f21b69dda1782e')

build()
{
	cd $startdir/src/castor-$pkgver

	export MAJOR_CASTOR_VERSION=2.1
	export MINOR_CASTOR_VERSION=9.4

	make -f Makefile.ini || return 1
	make client || return 2

	export DESTDIR="$startdir/pkg"
	make installclient || return 3
}
