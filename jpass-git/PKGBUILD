# For ArchLinux by Joel Porquet

pkgname=jpass-git
pkgver=r9.7670982
pkgrel=1
pkgdesc="JPass password manager"
url="https://joel.porquet.org/wiki/hacking/jpass/"
arch=('any')
license=('GPL3')
depends=('python')
makedepends=('git')

source=("${pkgname}::git+https://joel.porquet.org/cgit/cgit.cgi/jpass.git/")
md5sums=('SKIP')

pkgver() {
    cd ${pkgname}
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd ${pkgname}

    install -d "$pkgdir/usr/bin"
    install -m 0555 jpass.py "$pkgdir/usr/bin/jpass"
    install -d "$pkgdir/usr/share/doc/jpass"
    install -m 0444 jpass.conf.example "$pkgdir/usr/share/doc/jpass/"
}
