pkgname=sublime-text-2

post_install()
{

	if [ -f /usr/bin/sublime-text ] 
	then
		rm -f /usr/bin/sublime-text
	fi
	
	ln -s /usr/bin/${pkgname}/sublime_text /usr/bin/sublime-text
	#echo "done"
 
}
 
post_upgrade()
{
  post_install $1
}


post_remove() 
{
	if [ -f /usr/bin/sublime-text ] 
	then
		rm -f /usr/bin/sublime-text
	fi
}
