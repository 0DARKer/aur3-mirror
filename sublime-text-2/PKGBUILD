# Maintainer: Bartosz Chmura <chmurli at gmail dot com>

pkgname=sublime-text-2
pkgver=v2051
_pkgver=2051
pkgrel=1
pkgdesc="sophisticated text editor for code, html and prose"
arch=('any')
url="http://www.sublimetext.com/2"
license=('custom')
depends=()
source=(http://www.sublimetext.com/Sublime%20Text%202%20Build%20${_pkgver}.tar.bz2
	sublime-text-2.desktop)
md5sums=('85e5a3f84d9b9aab8ebd82385b27cda4'
	'9488ca065c884ebc1368c206a13061d3')


build () {

	
	mkdir -p ${pkgdir}/usr/bin/${pkgname}


	# cpu architecture
	if [ `uname -m` = i686 ]
	then
		cd $pkgdir
		cp -r ${srcdir}/Sublime\ Text\ 2/* usr/bin/${pkgname}
	else
		wget http://www.sublimetext.com/Sublime%20Text%202%20Build%20${_pkgver}%20x64.tar.bz2
		tar xvjf "Sublime Text 2 Build 2051 x64.tar.bz2"
		cp -r Sublime\ Text\ 2/* usr/bin/${pkgname}
	fi

	chmod -R 755 usr/bin/${pkgname}

	
	install -d -m 755 usr/share/applications || return 1
	install -m 644 ${srcdir}/sublime-text-2.desktop usr/share/applications || return 1



}



