# Maintainer: Lakota Morris <lakota[at]lakotamorris[dot]com>
pkgname=chunky
pkgver=1.0.2
pkgrel=1
pkgdesc="Chunky is a Minecraft mapping and rendering tool created by Jesper Ã–qvist."
url="http://chunky.llbit.se/"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('java-runtime')
optdepends=()
makedepends=('apache-ant')
conflicts=()
replaces=()
backup=()
source=("https://launchpad.net/chunky/trunk/${pkgver}/+download/Chunky-${pkgver}.tar.gz"
       chunky.sh)
md5sums=('32874bc43fbb36e2e4cd838aeedb1ba6'
         '1c220e3ab665994276097eb2bbc37f83')

build() {
  cd "${srcdir}/Chunky-${pkgver}"
  ant release
}

package() {
  cd "${srcdir}/Chunky-${pkgver}"
  mkdir -p ${pkgdir}/usr/share/java/chunky/
  mv ./build/Chunky.jar ${pkgdir}/usr/share/java/chunky/chunky.jar
  cd ..
  mkdir -p ${pkgdir}/usr/bin
  mv ./chunky.sh ${pkgdir}/usr/bin/chunky
}

