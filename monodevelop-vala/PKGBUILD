# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=monodevelop-vala
pkgver=2.8
pkgrel=1
pkgdesc="Vala language support for MonoDevelop"
arch=('i686' 'x86_64')
url="http://monodevelop.com"
license=('GPL')
depends=('monodevelop' 'mono-addins' 'vala')
makedepends=('mono')
source=(http://download.mono-project.com/sources/${pkgname}/${pkgname}-${pkgver}.tar.bz2
         MonoDevelop.ValaBinding.dll.config)
md5sums=('21b393b4ee57f6c567ef2b1358bf24fd'
         '886c69b613f9258f56149b6dffee8c6f')

         
build() {
  export MONO_SHARED_DIR="${startdir}/src/.wabi"
  mkdir -p "$MONO_SHARED_DIR"
  
  cd "${srcdir}/${pkgname}-${pkgver}"
  
  sed -i 's/libvala-0.12/libvala-0.14/g' configure*
  cp "${srcdir}/MonoDevelop.ValaBinding.dll.config" MonoDevelop.ValaBinding.dll.config

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
  rm -r "$MONO_SHARED_DIR"
}
