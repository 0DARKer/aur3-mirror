pkgname=monodevelop-vala
pkgver=2.6
pkgrel=1
pkgdesc="Vala language support for MonoDevelop"
arch=('i686' 'x86_64')
url="http://monodevelop.com"
license=('GPL')
depends=('mono' 'monodevelop' 'mono-addins' 'vala')
source=(http://download.mono-project.com/sources/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('a72dcadc5868f812b3f959de511cc3ca')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
