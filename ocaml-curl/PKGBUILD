# Packager: Justin Davis <jrcd 83 at gmail>
pkgname='ocaml-curl'
_oname='ocurl'
pkgver='0.5.3'
pkgrel='1'
pkgdesc="An interface for OCAML to the networking library libcurl"
arch=('i686' 'x86_64')
options=('!strip')
license=('BSD')
depends=('ocaml' 'curl>=7.9.8')
makedepends=('ocaml-findlib')
url='http://sourceforge.net/projects/ocurl/'
source=("http://sourceforge.net/projects/${_oname}/files/${_oname}/${pkgver}/${_oname}-${pkgver}.tgz")
md5sums=('c8b955e51f79dd2c62ab89577b27fe37')

_extdir="${srcdir}/${_oname}"
_destdir="${pkgdir}/usr/lib/ocaml/"

build() {
  cd "$_extdir"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$_extdir"
  mkdir -p "$_destdir"
  OCAMLFIND_DESTDIR="$_destdir" make install FINDLIB=ocamlfind
}

# Local variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
