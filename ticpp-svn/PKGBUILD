# Maintainer: Kevin Whitaker <eyecreate at gmail dot com>

pkgname=ticpp-svn
pkgver=121
pkgrel=1
pkgdesc="TinyXML for c++"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ticpp/"
license=('MIT')
depends=()
makedepends=('subversion' 'premake')
source=()
md5sums=()

_svntrunk=http://ticpp.googlecode.com/svn/trunk/
_svnmod=ticpp


build() {
  cd $srcdir  
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  cd $_svnmod
  premake --target gnu --ticpp-shared
  make || return 1
  mkdir -p $pkgdir/usr/lib/ticpp ||return 1
  mkdir -p $pkgdir/usr/include/ticpp ||return 1
  cp $srcdir/lib/libticppd.so $pkgdir/usr/lib || return 1
  cp $srcdir/ticpp/.obj/Debug/*.o $pkgdir/usr/lib/ticpp ||return 1
  cp $srcdir/ticpp/*.h $pkgdir/usr/include/ticpp ||return 1
}