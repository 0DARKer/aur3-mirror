pkgname=kaffeinety
_pkgname=KaffeineTY
pkgver=0.0.1
pkgrel=1
pkgdesc="A application to temporarity prevents dim screen action of power management and screensaver for KDE environment"
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php?content=159860"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4')
source=("http://kde-apps.org/CONTENT/content-files/159860-${_pkgname}.zip")
md5sums=('e806ba8179f1a2bdc61a6992bb2d3c59')

build() {
  cd "$srcdir/${_pkgname}"

  mkdir -p build
  cd build
    
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DQT_QMAKE_EXECUTABLE=qmake-qt4 ..
  make
}

package() {
  cd "$srcdir/${_pkgname}/build"
  make DESTDIR="${pkgdir}" install
}
