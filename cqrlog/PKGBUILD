pkgname=cqrlog
pkgver=1.5.4
pkgrel=2
pkgdesc="An advanced ham radio logger based on MySQL database. (Binary Version)"
arch=('i686' 'x86_64')
url="http://www.cqrlog.com"
license=('GPL')
groups=()
#depends=('mysql' 'hamlib' 'trustedqsl' 'xplanet' 'cwdaemon' 'glabels')
depends=('mysql' 'hamlib' 'trustedqsl' 'xplanet' 'glabels')

if [ "$CARCH" = "i686" ]; then
    _arch='i386'
    _pkg="${pkgname//_/-}_${pkgver//_/-}_${_arch}"
#    source=(http://www.cqrlog.com/files/${pkgname//_/-}_${pkgver}/${_pkg}.tar.gz)
    source=(${url}/files/${pkgname//_/-}_${pkgver}/${_pkg}.tar.gz)
    md5sums=('7685938473ac07cf5ddd38cc39522402')

  elif [ "$CARCH" = "x86_64" ]; then
    _arch='amd64'
    _pkg="${pkgname//_/-}_${pkgver//_/-}_${_arch}"
#    source=(http://www.cqrlog.com/files/${pkgname//_/-}_${pkgver}/${_pkg}.tar.gz)
    source=(${url}/files/${pkgname//_/-}_${pkgver}/${_pkg}.tar.gz)
    md5sums=('7a6594737f58a75c09536ca8e2686174')
fi

package() {
          cd "$srcdir/${_pkg}"
          cp -rfv ./* $pkgdir
}
