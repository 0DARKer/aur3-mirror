pkgname=cqrlog
pkgver=1.5.6
pkgrel=3
pkgdesc="An advanced ham radio logger based on MySQL database ( MariaDB replaces MySQL in repositories ). (Source Version)"
arch=('i686' 'x86_64')
url="http://www.cqrlog.com"
license=('GPL')
groups=()
# cwdaemon not actuality now in AUR
#depends=('mysql' 'hamlib' 'trustedqsl' 'xplanet' 'cwdaemon' 'glabels')


depends=('mariadb' 'libmariadbclient' 'mariadb-clients' 'hamlib' 'trustedqsl' 'xplanet' 'glabels' 'lazarus')

# If you use original MySQL uncomment string after and comment bellow

#depends=('mysql' 'hamlib' 'trustedqsl' 'xplanet' 'glabels')


if [ "$CARCH" = "i686" ]; then
    _arch='i386'
    md5sums=('75679efa27dc22a3bda11a04584eda54')

  elif [ "$CARCH" = "x86_64" ]; then
    _arch='amd64'
    md5sums=('d66dcc23e0a2e3b9bb4b9f65cb5cc7d7')
fi

_pkg="${pkgname//_/-}_${pkgver//_/-}_${_arch}"
source=(${url}/files/${pkgname//_/-}_${pkgver}/${_pkg}.tar.gz)

build() {
    cd "$srcdir/$pkgname"
    sed -i 's/--ws=gtk2 src/--lazarusdir=\/usr\/lib\/lazarus --ws=gtk2 src/g' Makefile
    make
}

package() {
    cd "$srcdir/$pkgname"
    make DESTDIR="$pkgdir/" install
}
