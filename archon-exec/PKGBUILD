# Maintainer: Kevin MacMartin <prurigro at gmail dot com>

pkgname=archon-exec
pkgver=1.1
pkgrel=1
pkgdesc="Wrapper script for launching Android APK files with ARChon"
arch=('any')
url="https://github.com/prurigro/archon-exec"
license=('MIT')
depends=('archon' 'chromeos-apk-git' 'chromium')
install=${pkgname}.install

source=("${url}/archive/v${pkgver}.tar.gz")
sha512sums=('64c7a87e72afe8998f718c0b9250b7a9caaf266a5ed30d71f58b379b2512fdc7afc643a04618f6d4c7ffc96372c72f19376573d0d80502234e13e9fa8569e8c4')

package() {
    cd ${pkgname}-${pkgver}
    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
    install -Dm644 README.md "$pkgdir"/usr/share/doc/$pkgname/README.md
    install -Dm644 $pkgname.desktop "$pkgdir"/usr/share/applications/$pkgname.desktop
    install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
    ln -s /usr/bin/$pkgname "$pkgdir"/usr/bin/${pkgname/-exec}
}
