# Contributor: florianbw <florian.bw@gmail.com>

pkgname=cytoscape
pkgver=3.0.1
pkgrel=1
pkgdesc='A software for visualizing molecular interaction networks and integration with gene expression profiles and other state data.'
arch=('i686' 'x86_64')
url=http://www.cytoscape.org
license=('LGPL2')
depends=('java-runtime')
source=("http://chianti.ucsd.edu/cytoscape-$pkgver/cytoscape-$pkgver.tar.gz" \
	'cytoscape3.desktop' \
	'cytoscape3.png' \
	'cytoscape3')

package() {

	install -d ${pkgdir}/opt/cytoscape3
	install -d ${pkgdir}/opt/cytoscape3/framework/instances
	install -d ${pkgdir}/usr/share/{applications,pixmaps}
	install -d ${pkgdir}/usr/bin

	cd ${startdir}/

	cp -r ${srcdir}/cytoscape-unix-${pkgver}/* ${pkgdir}/opt/cytoscape3
	chmod 755 ${pkgdir}/opt/cytoscape3/cytoscape.sh 
	install -D -m755  cytoscape3 ${pkgdir}/usr/bin/
	install -D -m644  cytoscape3.png ${pkgdir}/usr/share/pixmaps
	install -D -m644  cytoscape3.desktop ${pkgdir}/usr/share/applications
}

md5sums=('eb76fc3d02893c7063497055a766a71e'
         'c7178bdac9ad51ec5eed38049d9306da'
         'cbf3c0c062055861c8e2d82105afcc33'
         'eba049b5b7ae880024cbd99444fcb5e3')
