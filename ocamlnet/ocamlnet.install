post_install() {
  line=$(ocamlfind printconf destdir)/stublibs
  ldconf=$(ocamlfind printconf ldconf)
  echo "Registering $line in $ldconf..."
  if grep "^$line\$" "$ldconf" >/dev/null 2>/dev/null; then
    echo "...already there"
  else
    echo "$line" >> "$ldconf"
    echo "done"
  fi
}
post_upgrade() {
  post_install
}

