# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=scikits-statsmodels
pkgver=0.3.1
pkgrel=2
pkgdesc="Statistical computations and models for use with SciPy"
arch=('any')
url="http://scikits.appspot.com/statsmodels"
license=('BSD')
depends=('python2-scipy' 'scikits-base')
makedepends=('python2-distribute' 'unzip')
optdepends=('python2-matplotlib: used in examples'
            'python-numdifftools: used in sandbox')
options=(!emptydirs)

source=("http://pypi.python.org/packages/source/s/scikits.statsmodels/scikits.statsmodels-${pkgver}.zip")
md5sums=('6e0b7aa29b62acc657b69a0bf43c4cae')

build() {
  cd "$srcdir/scikits.statsmodels-${pkgver}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1

  rm "$pkgdir/`python2 -c 'from distutils.sysconfig import get_python_lib; \
    print get_python_lib()'`/scikits/__init__.py"

  sed -i -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
    $(find "${pkgdir}" -name '*.py')

  install -D LICENSE.txt "$pkgdir"/usr/share/licenses/scikits-statsmodels/LICENSE
}

