# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=cmplayer
pkgver=0.5.4
pkgrel=1
arch=('i686' 'x86_64')
url="http://code.google.com/p/cmplayer"
pkgdesc="A multimedia player in Qt"
license=('GPL')
depends=('vlc')
install=cmplayer.install
source=("http://cmplayer.googlecode.com/files/${pkgname}-${pkgver}-src.tar.gz")
sha1sums=('c233c32d8a6ea44b7df21b79de559829f3dbed0a')

build() {
  cd $srcdir/$pkgname-$pkgver
  make PREFIX=/usr all
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DEST_DIR="${pkgdir}" PREFIX=/usr install
}
