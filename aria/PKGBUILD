# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=aria
pkgver=1.0.0
pkgrel=1
pkgdesc="GTK download manager supporting HTTP/FTP protocol"
arch=('i686' 'x86_64')
url="http://aria-rpm.vookimedlo.cz/Home"
license=('GPL')
depends=('gtk' 'openssl')


if [ "${CARCH}" = 'x86_64' ]; then
  source=(http://downloads.sourceforge.net/project/aria-rpm/Aria%20for%20Fedora%20Core/1.0.0-1.fc12/aria-1.0.0-1.fc12.x86_64.rpm)
  md5sums=('056702c1c59e346338d4e67f09d2e83b')
elif  [ "${CARCH}" = 'i686' ]; then 
  source=(http://downloads.sourceforge.net/project/aria-rpm/Aria%20for%20Fedora%20Core/1.0.0-1.fc12/aria-1.0.0-1.fc12.i686.rpm)
  md5sums=('c47103c61d2fe2793356822b752ddfca')
fi

build() {
    cd $srcdir

    bsdtar xf $pkgname* -C $pkgdir

    # Symlinks
    mkdir -p $pkgdir/usr/lib
    ln -s "/usr/lib/libcrypto.so.1.0.0" "$pkgdir/usr/lib/libcrypto.so.10"
    ln -s "/usr/lib/libssl.so.1.0.0"    "$pkgdir/usr/lib/libssl.so.10"
}