pkgname='perl-catalyst-view-tt'
pkgver='0.34'
pkgrel='1'
pkgdesc="The Elegant MVC Web Application Framework"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-catalyst-runtime>=5.7' 'perl-class-accessor' 'perl-mro-compat' 'perl-path-class' 'perl-template-timer' 'perl-template-toolkit')
url='http://search.cpan.org/dist/Catalyst-View-TT'
source=('http://search.cpan.org/CPAN/authors/id/B/BO/BOBTFISH/Catalyst-View-TT-0.34.tar.gz')
md5sums=('7e5ad12423f06f39c9635ee31858d396')

build() {
  DIST_DIR="${srcdir}/Catalyst-View-TT-0.34"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&make test &&
    make DESTDIR="$pkgdir" install;  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
