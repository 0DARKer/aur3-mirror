# Maintainer: Sven Niese <Fd3querm@yahoo.de>
# Contributor: Daniel Murphy <mosquitogang201@gmail.com>
pkgname=calculix
pkgver=2.6
pkgrel=1
pkgdesc="CalculiX: 3D finite element solver and post-processor"
arch=('i686' 'x86_64')
url="http://www.calculix.de/"
license=('GPL2')
depends=('arpack' 'spooles' 'libsnl' 'blas' 'freeglut' 'lapack' 'mesa' 'gcc-fortran' 'glu' 'libxmu' )
source=("http://www.dhondt.de/ccx_${pkgver}.src.tar.bz2"
	"http://www.dhondt.de/cgx_${pkgver}.all.tar.bz2"
	"http://www.dhondt.de/ccx_${pkgver}.htm.tar.bz2"
	"http://www.dhondt.de/cgx_${pkgver}.htm.tar.bz2"
        "calculix_${pkgver}_archlinux.patch")
md5sums=('20824bd9d40e3f71e8570ea3d1b85128' 
         '6370c2b5c52f3b4d56a111f366d3e739'
         '36f79596f05691a47c66a29ec4ed41c1'
         '2ac1c3b63bf49cceb83318a8f3277d10'
         '89096c501f3c0607fd0d6d7cbc81ae96')

build() {
  msg "Patching makefiles."
  cd "${srcdir}"
  rm -rf CalculiX/libSNL
  patch -p0 < calculix_${pkgver}_archlinux.patch || return 1
  msg2 "Done patching."
  
  msg "Building..."
  cd CalculiX/ccx_${pkgver}/src && make || return 1
  cd ../../cgx_${pkgver}/src && make || return 1
  msg2 "Build complete."
}


package() {
  msg "Copying files."
  mkdir -p $pkgdir/usr/bin
  cd "${srcdir}"
  cp CalculiX/ccx_${pkgver}/src/ccx_${pkgver} $pkgdir/usr/bin
  rename $pkgdir/usr/bin/ccx_${pkgver} $pkgdir/usr/bin/ccx $pkgdir/usr/bin/ccx_${pkgver}
  cp CalculiX/cgx_${pkgver}/src/cgx $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/doc/ccx && mkdir -p $pkgdir/usr/share/doc/cgx
  cp CalculiX/ccx_${pkgver}/doc/ccx/* $pkgdir/usr/share/doc/ccx
  cp CalculiX/cgx_${pkgver}/doc/cgx/* $pkgdir/usr/share/doc/cgx
  msg2 "Done copying files."  
}
