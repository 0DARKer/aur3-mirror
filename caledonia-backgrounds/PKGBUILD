pkgname=caledonia-backgrounds
pkgver=2
pkgrel=2
pkgdesc="The official wallpaper collection for Caledonia (DE-independent)"
arch=('any')
url="http://malcer.deviantart.com"
license=('CCPL')
source=('http://sourceforge.net/projects/caledonia/files/Caledonia%20Official%20Wallpapers/Caledonia_Official_Wallpaper_Collection-1.5.tar.gz')
sha256sums=('9488e00637af5ac10eddcea37063ac63d1b33010fbb5d4dae0060954001da917')

package() {
    install -d "${pkgdir}/usr/share/backgrounds/caledonia"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Aqua/contents/images/2880x1800.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Aqua.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Bliss/contents/images/1920x1080.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Bliss.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Blue Dragon/contents/images/2560x1600.jpeg" "${pkgdir}/usr/share/backgrounds/caledonia/Blue Dragon.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Caledonia/contents/images/1920x1200.jpeg" "${pkgdir}/usr/share/backgrounds/caledonia/Caledonia.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Cypress/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Cypress.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Form/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Form.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Green/contents/images/1920x1200.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Green.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Industrial/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Industrial.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Jade/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Jade.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Light Wood/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Light Wood.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/On A Table/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/On A Table.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Pink Emotion/contents/images/2560x1600.jpeg" "${pkgdir}/usr/share/backgrounds/caledonia/Pink Emotion.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Pure Squares/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Pure Squares.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Road Surface/contents/images/1920x1080.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Road Surface.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Rusty Polygons/contents/images/2880x1880.jpeg" "${pkgdir}/usr/share/backgrounds/caledonia/Rusty Polygons.jpg"
    install -m644 "${srcdir}/Caledonia_Official_Wallpaper_Collection/Wet Blue/contents/images/2880x1880.jpg" "${pkgdir}/usr/share/backgrounds/caledonia/Wet Blue.jpg"
}
