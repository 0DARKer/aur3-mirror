# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=jircii
pkgver=b45
pkgrel=1
pkgdesc="A cross-platform IRC client written in Java"
arch=('any')
url="http://jircii.dashnine.org/"
license=('PerlArtistic')
depends=('java-runtime')
source=(http://jircii.dashnine.org/download/jerk${pkgver}.tgz \
  icon_16x16.png \
  icon_32x32.png \
  icon_48x48.png \
  jircii.desktop \
  jircii.sh)
md5sums=('c41c0b4bf57e559cf7eb3d52497289e4'
         '2d90ad2c322fa14316dd03133458ae69'
         '9dfa60931f089206f2532537ad3c2ae2'
         '6eeab1f174e11c227d08d05207c62e7c'
         '8a217dd3defea958e6e9dc22d8038de2'
         '4462cb0b7cf084353c3685bf49f65cf4')

build() {
  cd $srcdir/jIRCii
  # Install jar
  install -Dm644 jerk.jar $pkgdir/usr/share/java/jircii/jerk.jar
  # Install icons
  install -Dm644 ../icon_16x16.png $pkgdir/usr/share/icons/hicolor/16x16/apps/jircii.png
  install -Dm644 ../icon_32x32.png $pkgdir/usr/share/icons/hicolor/32x32/apps/jircii.png
  install -Dm644 ../icon_48x48.png $pkgdir/usr/share/icons/hicolor/48x48/apps/jircii.png
  # Install .desktop
  install -Dm644 ../jircii.desktop $pkgdir/usr/share/applications/jircii.desktop
  # Install script
  install -Dm755 ../jircii.sh $pkgdir/usr/bin/jircii
}
