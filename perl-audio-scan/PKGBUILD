# Contributor: AUR Perl <aurperl@juster.info>
# Generator  : CPANPLUS::Dist::Arch 1.12

pkgname='perl-audio-scan'
pkgver='0.86'
pkgrel='1'
pkgdesc="Fast C metadata and tag reader for all common audio file formats"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'zlib>=1.2.5')
makedepends=('perl-test-warn')
url='http://search.cpan.org/dist/Audio-Scan'
source=('http://search.cpan.org/CPAN/authors/id/A/AG/AGRUNDMA/Audio-Scan-0.86.tar.gz')
md5sums=('661a2905ae1713e208e3da46f933f677')

build() {
  local PERL=/usr/bin/perl DIST_DIR="${srcdir}/Audio-Scan-0.86"

  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$DIST_DIR"
    $PERL Makefile.PL
    make
    make test
    make install
  )

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

