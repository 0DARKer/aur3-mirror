pkgname=libcslp-svn
pkgver=62
pkgrel=1
pkgdesc="A C library for console applications"
url="http://code.google.com/p/consoleplus/"
license="LGPL"
arch=('i686' 'x86_64')
conflicts=('cslp')
provides=('cslp')
depends=('ncurses')
makedepends=('subversion')
svn_url="http://consoleplus.googlecode.com/svn/trunk/"
svn_local_dir=cslp

build() {
  svn co "$svn_url" "$svn_local_dir" -r $pkgver
  mkdir "$pkgdir/usr"
  mkdir "$pkgdir/usr/include"
  mkdir "$pkgdir/usr/lib"
  cd "$srcdir/$svn_local_dir"
  make
  make install DESTDIR=$pkgdir/usr
}
