# Maintainer: Luca Bennati <lucak3@gmail.com>

pkgname=warzone2100-beta
_pkgcod=warzone2100
pkgver=3.0_beta4
pkgrel=2
pkgdesc="3D realtime strategy game on a future Earth - Beta version"
url="http://wz2100.net/"
arch=('i686' 'x86_64')
conflicts=('warzone' 'warzone2100' 'warzone-svn')
provides=('warzone2100')
license=('GPL')
depends=('libjpeg' 'libmad' 'libtheora' 'libvorbis' 'openal' 'physfs' 'popt' 'quesoglc' 'sdl_net' 'ttf-dejavu')
makedepends=('unzip' 'zip')
source=(http://downloads.sourceforge.net/sourceforge/$_pkgcod/$_pkgcod-$pkgver.tar.gz)

build() {
  # If you find problem compiling warzone, uncomment the line below this one
  #unset CFLAGS
  cd "$_pkgcod-$pkgver"
  ./autogen.sh
  ./configure --prefix=/usr \
    --disable-motif \
    --with-distributor=AUR
  make
}
package() {
  cd "$_pkgcod-$pkgver"
  make DESTDIR="$pkgdir" install
}

md5sums=('75da3989709ff13e448bc3bf2435479b')
