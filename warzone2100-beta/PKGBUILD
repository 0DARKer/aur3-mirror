# Maintainer: Luca Bennati <lucak3 AT gmail DOT com>

pkgname=warzone2100-beta
_realname=warzone2100
pkgver=master_20110801
pkgrel=1
pkgdesc="3D realtime strategy game on a future Earth - Development version"
url="http://wz2100.net/"
arch=('i686' 'x86_64')
conflicts=('warzone2100' 'warzone-svn' 'warzone2100-git')
provides=('warzone2100')
license=('GPL')
depends=('gettext' 'physfs' 'quesoglc' 'openal' 'libvorbis' 'glew' 'qjson' 'qt' 'libtheora' 'ttf-dejavu')
makedepends=('unzip' 'zip')
source=("http://downloads.sourceforge.net/sourceforge/${_realname}/testing/${_realname}-${pkgver}.tar.gz")
md5sums=('d06bb9eacd0e3739741b3fdd1363b153')

build() {
  cd "${_realname}-${pkgver}"

  ./autogen.sh
  ./configure --prefix=/usr \
    --with-distributor=AUR

  make
}
package() {
  cd "${_realname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}
