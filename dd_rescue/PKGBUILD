pkgname=dd_rescue
pkgver=1.23
pkgrel=1
pkgdesc="A dd version that is very useful for data-recovery"
url="http://www.garloff.de/kurt/linux/ddrescue/"
license=("GPL")
depends=('glibc')
arch=('x86_64' 'i686')
source=(http://www.garloff.de/kurt/linux/ddrescue/$pkgname-$pkgver.tar.gz)
md5sums=('82d6c7530eba906d6f1a8b2024737a55')

build() {
  cd $srcdir/$pkgname
  make
}

package() {
  cd $srcdir/$pkgname
  make INSTALLDIR=$pkgdir/usr/bin install
}
md5sums=('6828139a188114511488440ad06a25be')
