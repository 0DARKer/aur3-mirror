pkgname=dd_rescue
pkgver=1.25
pkgrel=1
pkgdesc="A dd version that is very useful for data-recovery"
url="http://www.garloff.de/kurt/linux/ddrescue/"
license=("GPL")
depends=('glibc')
arch=('x86_64' 'i686')
source=(http://www.garloff.de/kurt/linux/ddrescue/$pkgname-$pkgver.tar.gz)
md5sums=('afb58b632a4026f13163efa11bc74e82')

build() {
  cd $srcdir/$pkgname
  make
}

package() {
  cd $srcdir/$pkgname
  make INSTALLDIR=$pkgdir/usr/bin install
  install -Dm644 $srcdir/$pkgname/README.$pkgname $pkgdir/usr/share/doc/$pkgname/README.$pkgname
}
