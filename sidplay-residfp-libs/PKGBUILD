pkgname=sidplay-residfp-libs
pkgver=36
pkgrel=1
pkgdesc="Sidplay2 fork with improved filter emulation."
arch=('i686' 'x86_64')
url="http://sidplay-residfp.sourceforge.net/"
license=('GPL')
depends=('gcc-libs')
makedepends=('pkgconfig' 'libtool>=1.4b' 'autoconf' 'automake')
conflicts=('sidplay2-libs')
options=('!emptydirs')
source=(http://www.bel.fi/~alankila/c64-sw/v$pkgver/sidplay-libs-2.1.1+alan.tar.bz2)
md5sums=('404bdd9bfaede007e363dd48ac3341d6')

build() {
  cd sidplay-libs-2.1.1

#  export CXXFLAGS+=" -fPIC"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
