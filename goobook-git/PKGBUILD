# Maintainer: Scott Hansen (firecat53) scottandchrystie at gmail
pkgname=goobook-git
pkgver=20110103
pkgrel=1
pkgdesc="Makes it possible to use your Google Contacts in an MUA such as Mutt. It's use mimics that of abook (somewhat)."
arch=('any')
url="http://goobook.googlecode.com/"
license=('GPL')
conflicts=('goobook')
provides=('goobook')
depends=('python2' 'python-gdata>=2.0.7' 'python2-distribute' 'python-simplejson' 'python-hcs_utils' 'python-keyring')
makedepends=('git' 'python2-distribute')
source=('goobook.patch')
install=goobook.install

_gitroot="git://gitorious.org/goobook/mainline.git"
_gitname="goobook"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  patch -p1 < ../goobook.patch || return 1


  python2 setup.py install --root=${startdir}/pkg --optimize=1 || return 1
}
md5sums=('7311a7299bf2b9ee53ec5bb146d5cd10')
