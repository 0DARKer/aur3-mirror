pkgname='perl-dist-zilla-plugin-git'
pkgver='1.102090'
pkgrel='1'
pkgdesc="update your git repository after release"
arch=('any')
url='http://search.cpan.org/dist/Dist-Zilla-Plugin-Git'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-class-mop' 'perl-datetime' 'perl-dist-zilla' 'perl-file-chdir' 'perl-git-wrapper' 'perl-moose' 'perl-moose-autobox' 'perl-moosex-has-sugar' 'perl-moosex-types' 'perl-path-class' 'perl-string-formatter' 'perl-test-exception')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/J/JQ/JQUELIN/Dist-Zilla-Plugin-Git-1.102090.tar.gz')
md5sums=('033f041a1288c73cb0d3c703ee98c449')

build() {
  DIST_DIR="${srcdir}/Dist-Zilla-Plugin-Git-1.102090"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Build.PL &&
    perl Build &&
    perl Build test &&
    perl Build install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

