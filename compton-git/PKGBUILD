# Maintainer: Val√®re Monseur <valere dot monseur at ymail dot com>

pkgname=compton-git
pkgver=20111228
pkgrel=1
pkgdesc="X Compositor (a fork of xcompmgr-dana)"
arch=(i686 x86_64)
url="https://github.com/chjj/compton"
license=('MIT')
depends=('libxcomposite' 'libxdamage' 'libxrender')
makedepends=('git')

_gitroot="git://github.com/chjj/compton.git"
_gitname="compton"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"

  cd "$srcdir/$_gitname-build"
  make PREFIX=/usr
}

package() {
  cd "$srcdir/$_gitname-build"

  #  can't install using make so let's do it manually
  install -D -m755 "$_gitname"   "$pkgdir/usr/bin/$_gitname"
  install -D -m644 "$_gitname.1" "$pkgdir/usr/share/man/man1/$_gitname.1"
  install -D -m644 "LICENSE"     "$pkgdir/usr/share/licenses/$_gitname/LICENSE"
}
