# Contributor: Christian Hesse <mail@earthworm.de>
pkgname=netcfg-vlan
pkgver=0.1
pkgrel=1
pkgdesc="VLAN support for netcfg2"
arch=(any)
url="http://code.schnouki.net/p/netcfg/"
license=('GPL')
depends=('netcfg>=2.5' 'vconfig')
source=(vlan.example vlan)

build() {
  install -Dm644 $srcdir/vlan.example $pkgdir/etc/network.d/examples/vlan
  install -Dm755 $srcdir/vlan $pkgdir/usr/lib/network/connections/vlan
}

md5sums=('d42cd14e91768e15bc938cd25a07a0d7'
         '426fe37086eabe77ecf461a59feb8de4')
