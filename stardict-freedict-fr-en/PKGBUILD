$startdir/src/stardict-freedict-eng-fra-2.4.2/dictd_www.freedict.de_eng-fra.idx \
$startdir/src/stardict-freedict-eng-fra-2.4.2/dictd_www.freedict.de_eng-fra.ifo \
$startdir/pkg/usr/share/stardict/dic/
