# Maintainer: Auguste Pop <auguste [at] gmail [dot] com>

pkgname=pkgcacheclean
pkgver=1.3
pkgrel=1
pkgdesc="Application to clean the pacman cache"
arch=('i686' 'x86_64')
url=('https://bbs.archlinux.org/viewtopic.php?pid=841774')
license=('GPL')
depends=('pacman')
source=($pkgname.c)
md5sums=('7bc0d665ffd18f4f7dfafb288a3ec17a')

build()
{
    cd $srcdir
    gcc -o $pkgname $CFLAGS -DCARCH=\"$CARCH\" $pkgname.c -lalpm $LDFLAGS
}

package()
{
    install -m 755 -D $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}
