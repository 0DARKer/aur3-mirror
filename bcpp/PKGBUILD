pkgname=bcpp
pkgver=20090630
pkgrel=1
pkgdesc="utility for indents C/C++ source programs"
arch=('i686' 'x86_64')
url="http://dickey.his.com/bcpp/bcpp.html"
license=("custom")
makedepends=(gcc)
depends=(gcc-libs)
source=(ftp://invisible-island.net/bcpp/bcpp.tar.gz)

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --mandir=/usr/share/man || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  mkdir -p $startdir/pkg/usr/share/bcpp || return 1
  cp code/bcpp.cfg $startdir/pkg/usr/bin || return 1
  mkdir -p ${startdir}/pkg/usr/share/licenses/bcpp || return 1
  install -m644 COPYING ${startdir}/pkg/usr/share/licenses/bcpp/ || return 1
}
md5sums=('3428176dafcf4af1d2741804bca05189')
