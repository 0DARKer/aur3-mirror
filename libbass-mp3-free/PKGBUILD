# Maintainer: Robert La Spina <rkidlaspina [at] gmail [dot] com>
pkgname=libbass-mp3-free
pkgver=2.4.8
pkgrel=1
pkgdesc="an audio library for use in software on several platforms. (non-MP3 version)"
arch=('i686' 'x86_64')
url="http://www.un4seen.com/bass.html"
license=('custom')
#depends=() Are there any?
makedepends=(unzip)
conflicts=(libbass)
source=(http://us.un4seen.com/files/bass24-linux.zip)
noextract=()
md5sums=('e286c662e5cc481a42e8259b13521d19')

build() {
	mkdir -p $pkgdir/usr/lib/
}

package() {
	if test "$CARCH" == i686; then
		cp $srcdir/mp3-free/libbass.so $pkgdir/usr/lib/
	fi

	if test "$CARCH" == x86_64; then
		cp $srcdir/x64/mp3-free/libbass.so $pkgdir/usr/lib/
	fi
}