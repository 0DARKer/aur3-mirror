# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=pydaw
pkgver=14.03.2
pkgrel=1
pkgdesc="PyDAW is a full featured audio and MIDI sequencer with a suite of high quality instrument and effects plugins."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/libmodsynth/"
license=('GPL3')
depends=('ffmpeg' 'fftw' 'liblo' 'libsamplerate' 'portmidi' 'python-numpy' 'python-pyqt4' 'python-scipy')
source=(http://sourceforge.net/projects/libmodsynth/files/pydaw4/linux/pydaw4-$pkgver-source-code.tar.gz)
md5sums=('32391693ac2a16dcefc806db6e5a7d0c')

build() {
  cd $srcdir/pydaw4-$pkgver
  make
}

package() {
  cd $srcdir/pydaw4-$pkgver  
  make DESTDIR=$pkgdir install
}