pkgname=pydaw
pkgver=14.01.3
pkgrel=1
pkgdesc="Complete solution for producing electronic music."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/libmodsynth/"
license=('GPL3')
depends=('ffmpeg' 'fftw' 'liblo' 'libsamplerate' 'libsndfile' 'portmidi' 'python-numpy' 'python-pyqt4' 'python-scipy')
source=(http://sourceforge.net/projects/libmodsynth/files/pydaw4/linux/pydaw4-$pkgver-source-code.tar.gz)
md5sums=('d517725d9d4e9cd380f72f7eb0039a35')

package() {
  cd $srcdir/pydaw4-$pkgver
  make
  make DESTDIR=$pkgdir install
}