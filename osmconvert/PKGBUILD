pkgname=osmconvert
pkgver=0.7U
pkgrel=1
pkgdesc='OpenStreetMap file format converter (.osm, .o5m, and .pbf)'
url='http://wiki.openstreetmap.org/wiki/Osmconvert'
license=('AGPL3')
arch=('i686' 'x86_64')
depends=('zlib')
source=("http://m.m.i24.cc/${pkgname}.c")
md5sums=('f6476506e035f6f2ed5a7fa30caa37e7')
sha256sums=('fddef0b8d84caa35cf9c490c2926a17d425c928cc0ce1beb8564cbc06fa83100')

build() {
  gcc "${pkgname}.c" -lz -O3 -o "${pkgname}"
}

package() {
  install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}

