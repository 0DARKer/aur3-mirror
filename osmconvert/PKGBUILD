pkgname=osmconvert
pkgver=0.7Q
pkgrel=1
pkgdesc='OpenStreetMap file format converter (.osm, .o5m, and .pbf)'
url='http://wiki.openstreetmap.org/wiki/Osmconvert'
license=('AGPL3')
arch=('i686' 'x86_64')
depends=('zlib')
source=("http://m.m.i24.cc/${pkgname}.c")
md5sums=('32fba4940720112e052ff4a2f940e38f')
sha256sums=('5878887042cb65abe726993e78696d6525f55e0752bbed0f8a2b466687de3a46')

build() {
  gcc ${pkgname}.c -lz -O3 -o ${pkgname}
}

package() {
  install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
}

