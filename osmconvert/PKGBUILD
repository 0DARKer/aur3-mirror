pkgname=osmconvert
pkgver=0.7R
pkgrel=1
pkgdesc='OpenStreetMap file format converter (.osm, .o5m, and .pbf)'
url='http://wiki.openstreetmap.org/wiki/Osmconvert'
license=('AGPL3')
arch=('i686' 'x86_64')
depends=('zlib')
source=("http://m.m.i24.cc/${pkgname}.c")
md5sums=('4251d92a16e322829b5409b4c6b96ce9')
sha256sums=('ea6480bebe400b501e4bcd83257fdb3894254ca4e674eb79942ed9fbf58d97c2')

build() {
  gcc ${pkgname}.c -lz -O3 -o ${pkgname}
}

package() {
  install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
}

