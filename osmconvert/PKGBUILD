pkgname=osmconvert
pkgver=0.7T
pkgrel=1
pkgdesc='OpenStreetMap file format converter (.osm, .o5m, and .pbf)'
url='http://wiki.openstreetmap.org/wiki/Osmconvert'
license=('AGPL3')
arch=('i686' 'x86_64')
depends=('zlib')
source=("http://m.m.i24.cc/${pkgname}.c")
md5sums=('6e80c8651782556cd1a8498bdbc62b90')
sha256sums=('8759d2b7a02ce8bb030e5b78d7b2fb7087fb2164e235bb822b927e636a6a9697')

build() {
  gcc ${pkgname}.c -lz -O3 -o ${pkgname}
}

package() {
  install -Dm755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
}

