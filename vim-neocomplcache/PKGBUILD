# Maintainer: Laszlo Papp <djszapi @ archlinux us>

pkgname=vim-neocomplcache
pkgver=4.09
_scriptid=12350
pkgrel=1
pkgdesc="Ultimate auto completion system for Vim"
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=2620"
license=('custom')
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('ddb91aae5b1101385b15aa3a1f0e70fb'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/vimfiles/{autoload,doc,indent,plugin,syntax}

    for x in doc; do
		install -Dm644 ${srcdir}/Ver.$pkgver/$x/* \
		${pkgdir}/usr/share/vim/vimfiles/$x/ || return 1;
	done

    cp -r ${srcdir}/Ver.$pkgver/autoload/* ${pkgdir}/usr/share/vim/vimfiles/autoload/ || return 1

    for x in plugin syntax indent; do
		install -Dm755 ${srcdir}/Ver.$pkgver/$x/* \
		${pkgdir}/usr/share/vim/vimfiles/$x/ || return 1;
	done

    install -Dm644 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt || return 1
}
