# Maintainer: Dalton Miller
pkgname=b2sum
pkgver=20121229
pkgrel=1
pkgdesc="BLAKE2 file hash sum check"
_zipprefix="blake2_code"
arch=('i686' 'x86_64')
url="https://blake2.net/"
license=('custom')
#depends=()
makedepends=(
	'unzip'
)
#optdepends=()
#conflicts=()
source=("https://blake2.net/blake2_code_${pkgver}.zip")
md5sums=('abbf10ed35efbbe29a7e6308ba8496fc')

build() {
	cd "${srcdir}/${_zipprefix}_${pkgver}/b2sum"
	make all
	mkdir -p "${pkgdir}/usr/bin"
	mv b2sum "${pkgdir}/usr/bin"
}
