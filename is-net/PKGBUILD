# Contributor: Ben Morgan <uv.sound@gmail.com>
pkgname=is-net
pkgver=0.9.2
pkgrel=1
pkgdesc="Several scripts providing action execution based on network connectivity"
arch=('any')
url="https://github.com/cassava/is-net"
license=('ISC')
groups=()
depends=(ifplugd)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
source=(https://github.com/downloads/cassava/$pkgname/$pkgname-$pkgver.tar.gz)
noextract=()

build() {
  cd $srcdir/$pkgname-$pkgver
  mkdir -p $pkgdir/usr/bin/
  install -m755 is-net is-net-run is-net-auto $pkgdir/usr/bin/
}
md5sums=('ef998b6f4134a016429ec85ac8d88824')
