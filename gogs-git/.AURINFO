pkgbase = gogs-git
	pkgdesc = Gogs(Go Git Service) is a Self Hosted Git Service in the Go Programming Language. This is the current git version from branch master.
	pkgver = 20140620
	pkgrel = 3
	url = http://gogits.org/
	install = gogs.install
	arch = i686
	arch = x86_64
	arch = armv6h
	arch = armv7h
	license = MIT
	makedepends = go>=1.2
	makedepends = git
	makedepends = patch
	depends = git
	optdepends = sqlite: SQLite support
	optdepends = mariadb: MariaDB support
	optdepends = postgresql: PostgreSQL support
	optdepends = redis: Redis support
	optdepends = memcached: MemCached support
	optdepends = openssh: GIT over SSH support
	conflicts = gogs-bin
	conflicts = gogs
	conflicts = gogs-git-dev
	source = gogs.service
	source = app.ini.patch
	source = start.sh
	source = gogs::git+http://github.com/gogits/gogs.git
	options = !strip
	options = !emptydirs
	backup = srv/gogs/conf/app.ini

pkgname = gogs-git

