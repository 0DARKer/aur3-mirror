# Maintainer: Alucryd <alucryd@gmail.com>
pkgname=gnome-shell-extension-activities-button
pkgver=20110527
pkgrel=1
pkgdesc="A gnome-shell extension to add the distributor logo beside the Activities button."
source=('http://www.fpmurphy.com/gnome-shell-extensions/activitiesbutton.tar.gz' 'extension.patch')
md5sums=('388cc5731440970eb45837e2abfdd1d1' '8fd90776f0ca230611c41f3c2cb7cb7f')
arch=('any')
url="http://www.fpmurphy.com/gnome-shell-extensions/"
license=('GPL3')
depends=('gnome-shell')

build() {
cd "$srcdir/activitiesbutton@fpmurphy.com"
patch -i ../extension.patch
}

package() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/share/gnome-shell/extensions/"
    cp -R "activitiesbutton@fpmurphy.com" "$pkgdir/usr/share/gnome-shell/extensions"
}

