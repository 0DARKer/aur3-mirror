pkgname=survex
pkgver=1.0.39
pkgrel=1
pkgdesc="Cave survey software"
arch=('i686' 'x86_64')
url="http://survex.com"
license=('GPL')
depends=()
makedepends=()
backup=()
source=(http://survex.com/software/$pkgver/$pkgname-$pkgver.tar.gz
)
md5sums=('ab28887018717e45d245d9fc0b958c22')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=${pkgdir}/usr --disable-aven --without-man
  make
  make install
}

