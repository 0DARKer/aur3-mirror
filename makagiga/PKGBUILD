# Maintainer: Joshua Stiefer <facedelajunk@gmail.com>
# Contributor: Fernando Henrique <arch at liquuid dot net> 

pkgname=makagiga
pkgver=3.8.13
pkgrel=1
pkgdesc="A free, easy-to-use, cross-platform application for doing a variety of tasks, such as text editing, todo listing, RSS reading, and simple image viewing."
url="http://makagiga.sourceforge.net"
depends=( 'java-runtime' )
license=('APACHE')
arch=('i686' 'x86_64')
source=(http://ufpr.dl.sourceforge.net/sourceforge/makagiga/$pkgname-$pkgver.zip)
md5sums=('88985fe7e364b837b3a0c99fa079ae04')

build() {
  cd $srcdir/$pkgname-$pkgver 
  mkdir -p $startdir/pkg/usr/share/makagiga 
  mkdir -p $startdir/pkg/usr/share/icons/hicolor/32x32/apps
  mkdir -p $startdir/pkg/usr/share/applications
  mkdir -p $startdir/pkg/usr/bin 
  sed -i 's#@@INSTALL_PREFIX@@#/usr#' *
  install -D $srcdir/$pkgname-$pkgver/{xdg-email,xdg-open,LICENSE.txt,README*,*jar} $pkgdir/usr/share/makagiga/
  install -D $srcdir/$pkgname-$pkgver/makagiga.png  $pkgdir/usr/share/icons/hicolor/32x32/apps/  
  install -D $srcdir/$pkgname-$pkgver/makagiga  $pkgdir/usr/bin
  install -D $srcdir/$pkgname-$pkgver/makagiga.desktop $pkgdir/usr/share/applications/ 
}

