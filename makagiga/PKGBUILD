# Contributor: Fernando Henrique <arch at liquuid dot net> 


pkgname=makagiga
pkgver=3.3beta
pkgrel=1
pkgdesc="Makagiga is a free, easy-to-use, cross-platform application for doing a variety of tasks, such as text editing, todo listing, RSS reading, and simple image viewing."
url="http://makagiga.sourceforge.net"
depends=( 'java-runtime' )
license=('APACHE')
arch=('i686' 'x86_64')
source=(http://ufpr.dl.sourceforge.net/sourceforge/makagiga/$pkgname-$pkgver.zip)
md5sums=('7d240b69d1ce9b094af3c43c4a35736d')

build() {
  cd $startdir/src/$pkgname-$pkgver && 
  mkdir -p $startdir/pkg/usr/share/makagiga && 
  mkdir -p $startdir/pkg/usr/share/icons/hicolor/32x32/apps &&
  mkdir -p $startdir/pkg/usr/share/applications &&
  mkdir -p $startdir/pkg/usr/bin && 
  cp $startdir/src/$pkgname-$pkgver/{splash.png,xdg-email,xdg-open,LICENSE.txt,README*,*jar} $startdir/pkg/usr/share/makagiga &&  
  cp $startdir/src/$pkgname-$pkgver/makagiga.png  $startdir/pkg/usr/share/icons/hicolor/32x32/apps/ &&  
  cp $startdir/makagiga  $startdir/pkg/usr/bin &&  
  cp $startdir/makagiga.desktop $startdir/pkg/usr/share/applications/ 
  
}

