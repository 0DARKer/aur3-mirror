pkgname=xvba-sdk
pkgver=0.74_404001
pkgrel=1
pkgdesc='XvBA SDK'
arch=(any)
url=http://developer.amd.com/tools-and-sdks/open-source/
license=(custom)
source=(http://developer.amd.com/wordpress/media/2012/10/$pkgname-${pkgver/_/-}.tar.gz)
sha256sums=(731a2c489f2fb5d7318c1976061b26c1057a696f46d09dcf55fbada97fed17eb)

package() {
  install -d $pkgdir/usr/{include/amd,share/{doc,licenses}/$pkgname}

  install -m644 include/amdxvba.h $pkgdir/usr/include
  ln -s /usr/include/amdxvba.h $pkgdir/usr/include/amd

  install -m644 doc/* LICENSE README $pkgdir/usr/share/doc/$pkgname

  ln -s /usr/share/doc/$pkgname/LICENSE $pkgdir/usr/share/licenses/$pkgname
}
