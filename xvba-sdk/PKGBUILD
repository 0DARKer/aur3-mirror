#Maintainer: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=xvba-sdk
_mainver=0.74
_subver=404001
pkgver=${_mainver}.${_subver}
pkgrel=2
pkgdesc="AMDs XvBA sdk"
arch=('any')
url="http://developer.amd.com/zones/opensource/pages/default.aspx"
license=('custom')
source=(http://developer.amd.com.php53-23.ord1-1.websitetestlink.com/wordpress/media/2012/10/xvba-sdk-${_mainver}-${_subver}.tar.gz)

package() {
  cd "${srcdir}"

  mkdir -p "${pkgdir}"/usr/share/{doc,licenses}/${pkgname}
  mkdir -p "${pkgdir}/usr/include/amd"

  cp -r include/* "${pkgdir}/usr/include/amd"
  cp -r doc/* "${pkgdir}/usr/share/doc/${pkgname}/"
  cp -r LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/"
}
md5sums=('b8f56bc55aa70cb19dd12857fdc184cc')
