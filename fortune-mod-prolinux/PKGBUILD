pkgname=fortune-mod-prolinux
pkgver=0.90
pkgrel=1
pkgdesc="Fortune cookies from the german site prolinux.de"
url="http://www.nanolx.org/random/fortunesflashrider/"
arch=('any')
license=('Public Domain')
depends=('fortune-mod')
source=(http://www.nanolx.org/downloads/fortunes-flashrider-0.90-BB-Styles-Edition.tar.bz2)

build() {
    cd $srcdir/fortunes-flashrider
    make all
    make PREFIX=$pkgdir/usr INSTALLDIR=/share/fortune install
}
sha256sums=('f7d8901deb5807f975bf52d21009e53f6b35aa850cf48ef5c525da0b4fdb681e')
