# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=chessx
pkgver=1.1.0
pkgrel=1
pkgdesc="ChessX is an Open Source chess database."
arch=('i686' 'x86_64')
url="http://chessx.sf.net"
license=('GPL2')
depends=('qt4')
install=$pkgname.install
source=(http://prdownloads.sourceforge.net/$pkgname/$pkgname-1-1-0.tgz
        $pkgname.install)
md5sums=('2a022476ee5e426d9b3abdf8468c2850'
         '0302ef7c974bfaf6d2f0a8d79ebfb050')

prepare() {
   cd $srcdir/$pkgname
   qmake-qt4
}

build() {
   cd $srcdir/$pkgname
   make
}

package() {
   cd $srcdir/$pkgname

   # Binary
   install -Dm755 release/chessx $pkgdir/usr/bin/chessx
   
   # Desktop icon
   install -Dm644 data/images/chessx.png $pkgdir/usr/share/pixmaps/chessx.png
   install -Dm644 unix/chessx.desktop $pkgdir/usr/share/applications/chessx.desktop
}