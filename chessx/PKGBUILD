# Maintainer: archtux <antonio.arias99999@gmail.com>

pkgname=chessx
pkgver=0.8
pkgrel=1
pkgdesc="ChessX is a chess database. With ChessX you can operate on your collection of chess games in many ways: browse, edit, add, organize, analyze, etc."
arch=('i686' 'x86_64')
url="http://chessx.sourceforge.net/"
license=('GPL2')
depends=('intltool' 'qt')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('e527890968439f4de9e7b02315e124ab')

build() {
  cd $srcdir/$pkgname-$pkgver/src

   # Compilation
   qmake
   make

   # Install
   mkdir -p $pkgdir/opt/$pkgname
   cd $srcdir/$pkgname-$pkgver
   cp -R bin/ data/ i18n/  $pkgdir/opt/$pkgname

   # Desktop icon
   cd ./data/images
   install -Dm644 chessx_48.tiff $pkgdir/usr/share/pixmaps/chessx_48.tiff
   install -Dm644 $startdir/chessx.desktop $pkgdir/usr/share/applications/chessx.desktop
}