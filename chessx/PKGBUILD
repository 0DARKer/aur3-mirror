# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=chessx
pkgver=0.9.4
pkgrel=2
pkgdesc="ChessX is an Open Source chess database."
arch=('i686' 'x86_64')
url="http://chessx.sf.net"
license=('GPL2')
depends=('qt4')
source=(http://sourceforge.net/projects/chessx/files/chessx/$pkgver/chessx-0-9-4.tgz
        chessx.desktop)
md5sums=('33b74b47d510b549322531610d37c27f'
         '8d256237efaae5d10456321d2e07a872')

build() {
   cd $srcdir/$pkgname

   qmake-qt4
   make
}

package() {
   cd $srcdir/$pkgname

   # Binary
   install -Dm755 release/chessx $pkgdir/usr/bin/chessx
   
   # Desktop icon
   install -Dm644 data/images/chessx.png $pkgdir/usr/share/pixmaps/chessx.png
   install -Dm644 ../chessx.desktop $pkgdir/usr/share/applications/chessx.desktop
}