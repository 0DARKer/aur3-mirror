# Maintainer: perlawk
pkgname=dlib
pkgver=18.2
pkgrel=1
epoch=
pkgdesc="Dlib is a general purpose cross-platform C++ library designed using contract programming and modern C++ techniques."
arch=(any)
url="http://dlib.net/"
license=('Boost Software License')
groups=()
depends=('gcc')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://jaist.dl.sourceforge.net/project/dclib/$pkgname/v$pkgver/$pkgname-$pkgver.tar.bz2
Makefile.sample
README.md)
noextract=()
md5sums=('ad92d682eecf3687012791c47d9f44b1'
         '70620b1b84f46d41159d600d26cb29a6'
         '07fdd281935ea7c6adcca0fa17814871')

build() {
	cd "$srcdir/$pkgname-$pkgver"
}

package() {
	mkdir -p $pkgdir/usr/include
	cd "$srcdir/$pkgname-$pkgver"
	cp -a dlib $pkgdir/usr/include	
}
