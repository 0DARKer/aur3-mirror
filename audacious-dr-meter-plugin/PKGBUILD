# Contributor: Rustam Tsurik <rustam.tsurik@gmail.com>

pkgname=audacious-dr-meter-plugin
realname=audacious-dr-meter-plugin
pkgver=20120715
pkgrel=1
pkgdesc="Dynamic Range Meter plugin for Audacious"
arch=('i686' 'x86_64')
url="http://tsurik.org.ua/dr-meter-plugin"
license=("GPL")
depends=("audacious")
makedepends=("make")
options=(!emptydirs)
source=(http://www.tsurik.org.ua/${realname}-${pkgver}.tar.bz2)

package() {
    cd ${srcdir}/${realname}-${pkgver}
    mkdir -p ${pkgdir}/usr/lib/audacious/General/
    make
    cp dr_meter.so ${pkgdir}/usr/lib/audacious/General/
}

sha1sums=('683393ac7bcd1916064b440bc561b47da9c3ec1f')
