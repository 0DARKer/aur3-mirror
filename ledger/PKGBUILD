# Maintainer:  TDY <tdy@archlinux.info>
# Contributor: Nathan Jones <nathanj@insightbb.com>

pkgname=ledger
pkgver=3.0.1
pkgrel=1
pkgdesc="A double-entry accounting system with a command-line reporting interface"
arch=('i686' 'x86_64')
url="http://ledger-cli.org/"
license=('BSD')
depends=('boost>=1.35' 'expat>=2.0.1' 'gmp>=4.2.2' 'pcre>7.7')
makedepends=('cmake' 'git')
options=('!libtool')
install=$pkgname.install
source=(https://github.com/ledger/$pkgname/archive/v$pkgver.tar.gz
        http://ledger-cli.org/2.6/ledger.pdf)
sha256sums=('70ecc6cab3fdc7bdc87b70d569f19977a1594d58e03b509c681dea71b89113ef'
            'c108584a435c6306e8f80e15afc9095c0b04a700a7a09e603b97816681c76883')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  git clone https://github.com/ledger/utfcpp.git lib/utfcpp # submodule excluded
  ./acprep --prefix=/usr update
  cmake -D BUILD_EMACSLISP:BOOL=ON .
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm644 doc/LICENSE "$pkgdir/usr/share/licenses/ledger/LICENSE"
  install -Dm644 ../$pkgname.pdf "$pkgdir/usr/share/doc/$pkgname/$pkgname.pdf"
}

# vim:set ts=2 sw=2 et:
