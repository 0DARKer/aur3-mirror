#!/bin/bash
# Maintainer: Jorge Barroso <jorge.barroso.11@gmail.com>

pkgname=baamanga
pkgver=0.3
pkgrel=1
pkgdesc='Command-line tool to download manga from many websites (submanga and mangafox already supported)'
arch=('i686' 'x86_64')
url="https://github.com/jorge-barroso/baamanga/"
license=('GPL2')
depends=(curl)
makedepends=()
provides=(baamanga)
conflicts=(baamanga-git)
install=baamanga.install
source=(https://github.com/jorge-barroso/baamanga/archive/${pkgver}.zip)
sha512sums=('b2060af31f304aa1d4c846eae9e6df7997e4fcdaa436f9f0517776267378073bfaf5a42dc58cdd94014d54e87d2bdeb73faee600536ae1bcb8cede6b453c9f42')

build(){
cd ${srcdir}/${pkgname}-${pkgver}
	make
}

package() {
cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}

# vim:set ts=2 sw=2 et:

