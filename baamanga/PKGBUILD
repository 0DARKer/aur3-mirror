#!/bin/bash
# Maintainer: Jorge Barroso <jorge.barroso.11@gmail.com>

pkgname=baamanga
pkgver=0.4
pkgrel=1
pkgdesc='Command-line tool to download mananga from submanga, mangafox and mangareader'
arch=('i686' 'x86_64')
url="https://github.com/jorge-barroso/baamanga/"
license=('GPL2')
depends=('curl')
provides=(baamanga)
conflicts=(baamanga-git)
install=baamanga.install
source=(https://github.com/jorge-barroso/baamanga/archive/${pkgver}.zip)
sha512sums=('191701ac06a494fd157eb2596c9430e86e967e473204c063ec68f4903c65c4f5a4f46687fbc82dbd168bf19aea6bbcebcd4f57a26619d76a995ba055337f873e')

build(){
cd ${srcdir}/${pkgname}-${pkgver}
	make
}

package() {
cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}

# vim:set ts=2 sw=2 et:

