#!/bin/bash
# Maintainer: Jorge Barroso <jorge.barroso.11@gmail.com>

pkgname=baamanga
pkgver=0.2
pkgrel=1
pkgdesc='Command-line tool to download manga from many websites (though, only submanga supported yet)'
arch=('i686' 'x86_64')
url="https://github.com/jorge-barroso/baamanga/"
license=('GPL2')
depends=(curl)
makedepends=()
provides=(baamanga)
conflicts=(baamanga-git)
install=baamanga.install
source=(https://github.com/jorge-barroso/baamanga/archive/0.2.zip)
sha512sums=('63e54fcceb70f5de148a537f1a112bf90ce5141b65b2ecb306d454447b8d1a276d3814f0ba6ae00291e526e9dadd555fca2598cf53d47780e7e774a70860fab3')

build(){
cd ${srcdir}/${pkgname}-${pkgver}
	make
}

package() {
cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}

# vim:set ts=2 sw=2 et:

