# -*- shell-script -*-
# Maintainer: Gianmarco Brocchi <gianmarcobrocchi@gmail.com>
pkgname=clinica
pkgver=0.1.1
pkgrel=1
pkgdesc="Simple medical records manager"
arch=('i686' 'x86_64')
url="https://launchpad.net/clinica-project"
license=('GPL')
# groups=()
depends=('sqlite3' 'libgee' 'gtk3')
makedepends=('git' 'vala' 'gettext' 'intltool' 'gnome-common')
provides=('clinica')
# conflicts=('clinica-git')
# replaces=()
# backup=()
# options=('!docs')
# install=
source=(http://launchpad.net/clinica-project/stable/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('e4153c776872ca8f0c36bf2a10402568')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr \
      --with-gtk3 \
      --docdir=/usr/share/doc/${pkgname}
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  # make DESTDIR="$pkgdir/" install
  make DESTDIR="${pkgdir}" clinicadocdir=/usr/share/doc/clinica install
}

# vim:set ts=2 sw=2 et:
