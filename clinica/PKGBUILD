# -*- shell-script -*-
# Maintainer: Gianmarco Brocchi <gianmarcobrocchi@gmail.com>
pkgname=clinica
pkgver=0.1.9
pkgrel=1
pkgdesc="Simple medical records manager"
arch=('i686' 'x86_64')
url="https://launchpad.net/clinica-project"
license=('GPL')
depends=('libgee' 'python' 'libpeas' 'dconf' 'sqlite3' 'gtk3')
makedepends=('git' 'vala' 'gettext' 'intltool' 'gnome-common')
provides=('clinica')
# conflicts=()
# replaces=()
# options=('!docs')
install=$pkgname.install
source=(http://launchpad.net/clinica-project/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('d4cb652043a816380de6915a5b97ef99')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # BUILD HERE
  ./waf configure --prefix=/usr \
  # touch src/*.vala
      # --docdir=/usr/share/doc/${pkgname} \
  LC_ALL=C LANG=C ./waf build 
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  ./waf --destdir="${pkgdir}" install
  rm $pkgdir/usr/share/glib-2.0/schemas/gschemas.compiled
}