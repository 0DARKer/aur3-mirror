# -*- shell-script -*-
# Maintainer: Gianmarco Brocchi <gianmarcobrocchi@gmail.com>
pkgname=clinica
pkgver=0.1a1
pkgrel=1
pkgdesc="Simple medical records manager"
arch=('i686' 'x86_64')
url="https://launchpad.net/clinica-project"
license=('GPL')
# groups=()
depends=('sqlite3' 'libgee' 'gtk2')
makedepends=('git' 'vala' 'gettext' 'intltool' 'gnome-common')
provides=('clinica')
# conflicts=('clinica-git')
# replaces=()
# backup=() # home/user/.config/clinica/clinica.db
# options=('!docs')
# install=
source=(http://launchpad.net/clinica-project/trunk/0.1-alpha1/+download/$pkgname-0.1a1.tar.gz)
md5sums=('f458c9c7d08a143b9ea523a8dd7ea52f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr \
      --docdir=/usr/share/doc/${pkgname}
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  # make DESTDIR="$pkgdir/" install
  make DESTDIR="${pkgdir}" clinicadocdir=/usr/share/doc/clinica install
}

# vim:set ts=2 sw=2 et:
