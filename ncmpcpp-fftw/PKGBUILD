# Maintainer: Erus <erus.iluvatar@gmail.com>

pkgname=ncmpcpp-fftw
_pkgname=ncmpcpp
pkgver=0.5.9
pkgrel=1
pkgdesc="An almost exact clone of ncmpc with some new features, fftw visualisation enabled."
arch=('i686' 'x86_64')
url="http://unkart.ovh.org/ncmpcpp/"
license=('GPL')
conflicts=(${_pkgname})
provides=(${_pkgname})
depends=('curl' 'libmpdclient' 'taglib' 'ncurses' 'fftw')
install=${pkgname}.install
source=(http://unkart.ovh.org/ncmpcpp/${_pkgname}-${pkgver}.tar.bz2)

build() {
  cd $srcdir/${_pkgname}-${pkgver}
  ./configure --prefix=/usr \
         --enable-outputs \
         --enable-visualizer \
         --enable-clock \
         --enable-unicode \
         --with-curl \
         --with-fftw \
         --with-taglib
  make
  make DESTDIR="$pkgdir" install
}
md5sums=('07f62d6574d0dcc99cad84adb9754203')
sha512sums=('387b8b0afd1a072a0a88c505146a19c22eb8c9d43ab423a69edebc8cd6763e71b3da6980a8020be72c6ad9dd9b19bc65743f421142de5996483758d8bd4e2970')
