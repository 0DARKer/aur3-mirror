# Maintainer: Erus <erus.iluvatar@gmail.com>

pkgname=ncmpcpp-fftw
_pkgname=ncmpcpp
pkgver=0.5.7
pkgrel=1
pkgdesc="An almost exact clone of ncmpc with some new features, fftw visualisation enabled."
arch=('i686' 'x86_64')
url="http://unkart.ovh.org/ncmpcpp/"
license=('GPL')
conflicts=(${_pkgname})
provides=(${_pkgname})
depends=('curl' 'libmpdclient' 'taglib' 'ncurses' 'fftw')
install=${pkgname}.install
source=(http://unkart.ovh.org/ncmpcpp/${_pkgname}-${pkgver}.tar.bz2)
sha512sums=('378aa0fcc2d3a2df6b4ff1c65fdb8c2fdcfe7c7340e583ef2264973257e7b12d830454a48201613ed446068c7342f41ba4628fb164b3b58ff311e38f8ddeafc0')

build() {
  cd $srcdir/${_pkgname}-${pkgver}
  ./configure --prefix=/usr \
         --enable-outputs \
         --enable-visualizer \
         --enable-clock \
         --enable-unicode \
         --with-curl \
         --with-fftw \
         --with-taglib
  make
  make DESTDIR="$pkgdir" install
}
