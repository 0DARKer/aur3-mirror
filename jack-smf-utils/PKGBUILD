# Maintainer: David Adler <david dot jo dot adler at gmail dot com>
pkgname=jack-smf-utils
pkgver=1.0
pkgrel=2
pkgdesc="JACK MIDI player and recorder with Transport sync"
arch=('i686' 'x86_64')
url="http://jack-smf-utils.sourceforge.net"
license=('GPL')
depends=('jack' 'glib2' 'libsmf')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz jack-smf-utils.patch)
md5sums=('80234923dd5a14bdbd8ef567347d9df8'
         '293248e129c7f5bdfebf933cce6bb447')

build() {
  cd "$srcdir/$pkgname-$pkgver" 
  patch -p1 -i $srcdir/jack-smf-utils.patch 
  autoreconf
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}
