# Maintainer:  TDY <tdy@gmx.com>
# Contributor: Christoph Zeiler <rabyteNOSPAM_at_gmx.dot.org>

pkgname=wxhexeditor
pkgver=0.10
pkgrel=1
pkgdesc="A hex editor built on the wxWidgets toolkit"
arch=('i686' 'x86_64')
url="http://wxhexeditor.sourceforge.net/"
license=('GPL')
depends=('wxgtk')
source=(http://downloads.sourceforge.net/$pkgname/wxHexEditor-v$pkgver-src.tar.bz2)
md5sums=('1d486ea78a5619082dd80faefcdac90c')

build() {
  cd "$srcdir/wxHexEditor"
  make
}

package() {
  cd "$srcdir/wxHexEditor"
  make DESTDIR="$pkgdir" install
  ln -sf wxHexEditor "$pkgdir/usr/bin/$pkgname"
}
