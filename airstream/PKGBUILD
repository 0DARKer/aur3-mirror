# Mantainer:  David Fabijan <mclenin.at.gmail.com>

pkgname=airstream
pkgver=5.1.2
pkgrel=1
pkgdesc="Computer side of the AirStream software for Android streaming"
arch=('any')
url="http://airstream.io/"
license=('Commercial')
depends=('java-runtime' 'ffmpeg')
source=(http://54.212.250.206/pc-suites/airstream-linux.jar
        airstream.sh
        airstream.desktop)
md5sums=('6f3812dfe68c683ad3084e81031ee45a'
         'a891e24b4665f9e56cb7e5e73a78b167'
         '16019fb4fb54223c1c284ab77633f811')

package() {
  cd ${srcdir}
  install -Dm755 airstream-linux.jar ${pkgdir}/usr/share/java/${pkgname}/airstream-linux.jar

  install -Dm755 ${pkgname}.sh ${pkgdir}/usr/bin/${pkgname}

  install -Dm644 ${pkgname}.desktop ${pkgdir}/usr/share/applications/${pkgname}.desktop
  install -Dm644 com/nityaalabs/mediaserver/res/login_logo.png ${pkgdir}/usr/share/pixmaps/airstream.png
}
