# Maintainer: tailinchu <use_my_id at gmail dot com>

pkgname=ttf-noto
pkgver=20130411
pkgrel=1
pkgdesc="Fonts support all languages/characters in Unicode"
arch=('any')
url="https://code.google.com/p/noto/"
license=('apache')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
makedepends=()
conflicts=()
provides=('ttf-font')
source=("https://noto.googlecode.com/files/NotoFonts-hinted-2013-04-11.zip")
sha1sums=('5fb539468e0e689d9c60c246577432e212364e8b')

package() {
    mkdir -p $pkgdir/usr/share/fonts/TTF/
    cp -r $srcdir/fonts/individual/hinted/*.ttf $pkgdir/usr/share/fonts/TTF/
}

