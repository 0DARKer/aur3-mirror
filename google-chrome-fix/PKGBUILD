# Maintainer: Oleg Smirnov <oleg.smirnov@gmail.com>
pkgname=google-chrome-fix
pkgver=1
pkgrel=2
pkgdesc="Workaround for Google Chrome libjpeg issue"
arch=('i686' 'x86_64')
url="http://dev.chromium.org/getting-involved/dev-channel"
license=('custom:chrome')
depends=('gtk2' 'libjpeg6')
install=${pkgname}.install

build() {
    if [ "${CARCH}" = 'x86_64' ]; then
      ARCH='amd64'
    else
      ARCH='i386'
    fi
    wget -Nc http://mirrors.kernel.org/ubuntu/pool/main/g/gtk+2.0/libgtk2.0-0_2.18.3-1_$ARCH.deb
    ar -xv libgtk2.0-0_2.18.3-1_$ARCH.deb
    tar -xvf data.tar.gz
    mkdir -p "${pkgdir}/opt/google/chrome"
    cp "${srcdir}/usr/lib/gtk-2.0/2.10.0/loaders/libpixbufloader-jpeg.so" "${pkgdir}/opt/google/chrome"
}
