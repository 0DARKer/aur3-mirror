# Contributor: Ivan Dimitrov <madcat87@gmail.com>

pkgname=phun
pkgver=5.28
pkgrel=4
pkgdesc="Phun is a free game like 2D physics sandbox"
arch=('i686' 'x86_64')
depends=('sdl_image')
url="http://www.phunland.com"
license=('custom')

_arch='linux32'
[ "$CARCH" = "x86_64" ] && _arch='linux64'


source=(${url}/download/Phun_beta_${pkgver//./_}_${_arch}.tgz $pkgname ${pkgname}.desktop COPYING)
md5sums=('aade8e21f278cd386aa6143eaa16cf7c'
         '9fe25d7c096db61c78a30a03abbf8a8a'
         'f7111cef68c58eda4a4e26cd3843778b'
         'faf9a176922664a0316e5062e7b18638')

[ "$CARCH" = "x86_64" ] && md5sums[0]='ff262b43cde833cbef0c3ef4f61287e7'

build() {

mkdir "$pkgdir/opt/" || return 1
cp -r "$srcdir/Phun" "$pkgdir/opt/" || return 1
install -D -m755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname" || return 1
install -D -m644 "$srcdir/$pkgname.desktop" "$pkgdir/usr/share/applications/$pkgname.desktop" || return 1
install -D -m644 "$srcdir/COPYING" "$pkgdir/usr/share/licenses/$pkgname/COPYING" || return 1
}

