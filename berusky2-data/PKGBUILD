pkgname=berusky2-data
pkgver=0.3
pkgrel=2
pkgdesc="A logic game based on the puzzle game Sokoban - Data"
arch=('any')
url="http://www.anakreon.cz/en/"
license=('GPL')
source=(http://www.anakreon.cz/download/${pkgname}-${pkgver}.tar.gz)
md5sums=('ba2f9737ae38cd0baff9c570f2c1be38')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  install -d ${pkgdir}/usr/share/berusky2
  cp -r game_data bitmap textures data items materials game out berusky3d.ini ${pkgdir}/usr/share/berusky2/
  #rm ${pkgdir}/usr/share/berusky2/*.spec
}
