# Maintainer: Michael Klimczak <comm@schattensaiten.net>
# This PKGBUILD is based upon the gscpav1 package from the
# community repository which was contributed by Daniel
# Isemann.

_kernver=2.6.23-tp_plus
pkgname=gspcav1-tp_plus
pkgver=1.00.20
pkgrel=1
pkgdesc="GSPCAV driver (supports over 200 popular webcams) for tp_plus kernel"
arch=(i686 x86_64)
url="http://mxhaard.free.fr"
license=('GPL2')
depends=('kernel26tp_plus')
install=gspcav1-tp_plus.install
source=(http://mxhaard.free.fr/spca50x/Download/gspcav1-20071224.tar.gz)
md5sums=('14853ba1f4edc1e685039fca56e5ebf2')

build() {
  cd $startdir/src/gspcav1-20071224
  make || return 1
  #Install kernel module
  install -D -m644 gspca.ko $startdir/pkg/lib/modules/$_kernver/kernel/drivers/media/video/usbvideo/gspca.ko
  sed -i -e "s/KERNEL_VERSION='.*'/KERNEL_VERSION='${_kernver}'/" $startdir/*.install
}
