# Contributor: JD Horelick <jdhore1@gmail.com>
pkgname=cowdancer
pkgver=0.47
pkgrel=1
pkgdesc="A Debian package building tool that is a frontend for pbuilder that uses chroots"
arch=('i686')
url=(ftp://ftp.us.debian.org/debian/pool/main/c/$pkgname/)
license=('GPL')
depends=('pbuilder-ubuntu')
source=(ftp://ftp.us.debian.org/debian/pool/main/c/$pkgname/$pkgname_$pkgver.tar.gz)
md5sums=(f0e446c1b301f34662ab2bf92ca39a5e)


build() {
  cd $startdir/src/$pkgname
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}

