# Maintainer: Neale Pickett <neale@woozle.org>

pkgname=runit-desktop
pkgver=1.0
pkgrel=1
pkgdesc="Startup scripts for a runit-based desktop"
arch=(any)
url="http://woozle.org/neale/g.cgi/aur/runit-desktop"
license=(BSD)
depends=(runit-init busybox dhcpcd)
optdepends=(
	'xorg-xdm: X Display manager'
)

package () {
	cd $pkgdir
	cp -r $BUILDDIR/root/* .

	for d in service/*; do
		install -d -m 0770 -g log $d/log
		install $BUILDDIR/log-run $d/log/run
	done
}
