# Maintainer: willemw <willemw12@gmail.com>

_pkgname=dmenu-frecency
pkgname=$_pkgname-git
pkgver=r31.971569a
pkgrel=1
pkgdesc="dmenu-based desktop application launcher that uses a combination of frequency and recency"
arch=('any')
url="https://github.com/kspi/dmenu-frecency"
license=('MIT')
depends=('dmenu' 'python-docopt' 'python-xdg')
makedepends=('git')
provides=($_pkgname)
conflicts=($_pkgname)
source=(git://github.com/kspi/$_pkgname.git)
md5sums=('SKIP')

pkgver() {
  cd $_pkgname
  git describe --long | sed -r 's/([^-]*-g)/r\1/;s/-/./g'
}

package() {
  cd $_pkgname
  install -Dm755 $_pkgname "$pkgdir/usr/bin/$_pkgname"
}

