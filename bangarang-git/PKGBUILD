# Contributor: Patrick Schwalm <patrick [dot] schwalm "at" googlemail {dot} com>
# Contributor: Renan Fernandes <renan "at" kauamanga {dot} com {dot} br>
pkgname=bangarang-git
pkgver=20100715
pkgrel=1
pkgdesc="A KDE Media Player"
arch=('i686' 'x86_64')
url="http://gitorious.org/bangarang"
license=('LGPL')
groups=()
depends=('kdelibs>=4.3' 'taglib>=1.5')
makedepends=('git' 'cmake' 'automoc4')
provides=('bangarang')
conflicts=('bangarang')
replaces=()
backup=()
options=()
install=bangarang.install
source=()
noextract=()
md5sums=()

_gitroot="git://gitorious.org/bangarang/bangarang.git"
_gitname="bangarang"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth 1 $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"


  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release || return 1
  make DESTDIR="$pkgdir/" install || return 1
  rm -rf "$srcdir/$_gitname-build"
}
