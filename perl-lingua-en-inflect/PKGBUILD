pkgname='perl-lingua-en-inflect'
pkgver='1.891'
pkgrel='1'
pkgdesc="English sing->plur, a/an, nums, participles"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Lingua-EN-Inflect'
source=('http://search.cpan.org/CPAN/authors/id/D/DC/DCONWAY/Lingua-EN-Inflect-1.891.tar.gz')
md5sums=('1443da045ddd79c8b2c2670cbe8d4cb9')

build() {
  _DISTDIR="${srcdir}/Lingua-EN-Inflect-1.891"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
