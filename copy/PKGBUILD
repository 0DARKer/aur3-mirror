pkgname=copy
pkgver=1.28.0657
pkgrel=1
pkgdesc="Store, protect, and share amazing things."
arch=("x86_64")
url="http://www.copy.com"
license=(custom)
depends=(gtk2)
options=('!strip' '!upx')

source=("https://copy.com/install/linux/Copy.tgz"
        "copy.desktop"
        "copy.png"
        "terms.txt"
        "copy.service")

md5sums=('b6e4304e0b1f3424cebbbe1da13a93eb'
         '4885a6b16bc9537f013c168069cdaf1c'
         '2a014abc48ac11bb3ffbdce63e8e87ea'
         '323fbdc33d095dcae29108a395709b1f'
         'c03b34fc03f660269bebf8cde6fc8407')

build() {
	install -d "$pkgdir/opt"
	cp -R "$srcdir/copy/x86_64" "$pkgdir/opt/copy"

	find "$pkgdir/opt/copy/" -type f -exec chmod 644 {} \;
	chmod 755 "$pkgdir/opt/copy/CopyAgent"
	chmod 755 "$pkgdir/opt/copy/CopyCmd"
	chmod 755 "$pkgdir/opt/copy/CopyConsole"

	install -d "$pkgdir/usr/bin"
	ln -s "/opt/copy/CopyAgent" "$pkgdir/usr/bin/CopyAgent"
	ln -s "/opt/copy/CopyCmd" "$pkgdir/usr/bin/CopyCmd"
	ln -s "/opt/copy/CopyConsole" "$pkgdir/usr/bin/CopyConsole"

	install -Dm644 "$srcdir/copy.desktop" "$pkgdir/usr/share/applications/copy.desktop"
    install -Dm644 "$srcdir/copy.png" "$pkgdir/usr/share/pixmaps/copy.png"
	install -Dm644 "$srcdir/terms.txt" "$pkgdir/usr/share/licenses/$pkgname/terms.txt"
	install -Dm644 "$srcdir/copy.service" "$pkgdir/usr/lib/systemd/system/copy@.service"
}
