# Maintainer: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=webvideo
pkgver=0.4.3
pkgrel=1
pkgdesc="Video download manager for Finnish tv chanels and youtube."
arch=('i686' 'x86_64')
url="http://users.tkk.fi/~aajanki/vdr/webvideo/"
license=('GPL3')
depends=('python2' 'python-pycurl' 'rtmpdump-yle' 'mimms')
source=(http://users.tkk.fi/~aajanki/vdr/webvideo/vdr-webvideo-${pkgver}.tgz
	webvideo-arch.patch)


build() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -p1 -i ../webvideo-arch.patch
  make libwebvi
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install-webvi
  mkdir "$pkgdir/etc"
  sed 's|/usr/local|/usr|g' -i webvi.conf
  cp webvi.conf "$pkgdir/etc/"
}

# vim:set ts=2 sw=2 et:
md5sums=('2989b653b0972b6f1c9c1e7a99a1ec2e'
         '53ee658abff5266b4d38f7cef2080c1c')
