# Maintainer: pisuka <tekmon@gmail.com>
pkgname=heroku-toolbelt
pkgver=2.33.0
pkgrel=1
pkgdesc="Everything you need to get started using Heroku"
arch=(any)
url="https://toolbelt.heroku.com"
license=(MIT APACHE RUBY PerlArtistic GPL "custom:ISC")
groups=()
depends=("ruby>=1.9")
makedepends=()
provides=()
conflicts=(ruby-heroku)
replaces=()
backup=()
options=()
install=
source=(http://assets.heroku.com/heroku-client/heroku-client-${pkgver}.tgz)
md5sums=('d090d7bace080a289bcd2280c79f60b5')

package() {
	cd "${pkgdir}"
	mkdir -p "opt" "usr/bin"
  mv "${srcdir}/heroku-client" "opt/${pkgname}"
  find "opt/${pkgname}/bin" -maxdepth 1 -type f -executable -printf "/opt/${pkgname}/bin/%f\n" | xargs ln -st usr/bin/
}

# vim:set ts=2 sw=2 et:
