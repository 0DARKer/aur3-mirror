# Maintainer: pisuka <tekmon@gmail.com>
pkgname=heroku-toolbelt
pkgver=2.34.0
pkgrel=1
pkgdesc="Everything you need to get started using Heroku"
arch=(any)
url="https://toolbelt.heroku.com"
license=(MIT APACHE RUBY PerlArtistic GPL custom)
groups=()
depends=("ruby>=1.9")
makedepends=()
optdepends=(git)
provides=()
conflicts=(ruby-heroku ruby-foreman)
replaces=()
backup=()
options=()
install=
source=(http://assets.heroku.com/heroku-client/heroku-client-${pkgver}.tgz
		http://assets.foreman.io/foreman/foreman.tgz)
md5sums=('8d48cbf964c6c2693043ca7fad1888e7'
         '7ce9560f855b259278b749a369685922')
package() {
	cd "${pkgdir}"
	mkdir -p "opt/${pkgname}" "usr/bin"
	mv "${srcdir}/heroku-client" "opt/${pkgname}/heroku-client"
  	find "opt/${pkgname}/heroku-client/bin" -maxdepth 1 -type f -executable -printf "/opt/${pkgname}/heroku-client/bin/%f\n" | xargs ln -st usr/bin/

  	mv "${srcdir}/foreman" "opt/${pkgname}/foreman"
  	find "opt/${pkgname}/foreman" -maxdepth 1 -type f -executable -printf "/opt/${pkgname}/foreman/%f\n" | xargs ln -st usr/bin/
  	find "opt/${pkgname}/foreman/bin" -maxdepth 1 -type f -executable -printf "/opt/${pkgname}/foreman/bin/%f\n" | xargs ln -st usr/bin/
}

# vim:set ts=2 sw=2 et:
