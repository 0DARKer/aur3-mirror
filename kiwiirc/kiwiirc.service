[Unit]
Description=Kiwi IRC web client
After=network.target

[Service]
Type=forking
PIDFile=/run/kiwiirc.pid
ExecStart=/usr/bin/kiwi start -p /run/kiwiirc.pid
ExecReload=/usr/bin/kiwi reconfig -p /run/kiwiirc.pid
ExecStop=/usr/bin/kiwi stop -p /run/kiwiirc.pid

[Install]
WantedBy=multi-user.target

