# Maintainer: Alexander RÃ¸dseth <xyproto@archlinux.org>

pkgname=algernon
pkgver=0.44
pkgrel=1
pkgdesc='HTTP/2 web server that can serve Markdown and dynamic Lua scripts'
arch=('x86_64' 'i686')
url='https://github.com/xyproto/algernon/'
license=('MIT')
makedepends=('go' 'git')
source=("git://github.com/xyproto/algernon#tag=$pkgver")
md5sums=('SKIP')

prepare() {
  cd "$pkgname"

  GOPATH="$srcdir" go get -d
}

build() {
  cd "$pkgname"

  GOPATH="$srcdir" go build
}

package() {
  cd "$pkgname"

  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

# vim:set ts=2 sw=2 et:
