# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python-yapsy
_pyname=Yapsy
pkgver=1.10.1
pkgrel=1
pkgdesc='Yet another plugin system'
arch=('any')
url='http://packages.python.org/Yapsy/'
license=('BSD')
depends=('python')
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/$(echo ${_pyname} | cut -c1)/${_pyname}/${_pyname}-${pkgver}-pythons2n3.tar.gz"
        "LICENSE")
md5sums=('468274aa078bd56a5ab4a41cd6c0c8ef'
         '5fc5fc95805a87e1cfe6788f0bee50c7')

package() {
  cd "${srcdir}/${_pyname}-${pkgver}-pythons2n3"
  python3 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 ../LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

