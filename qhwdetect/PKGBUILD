# Contributor: Giuseppe Cigala <g_cigala@virgilio.it>
 
pkgname=qhwdetect
pkgver=1.0
pkgrel=1
pkgdesc="Qt4 version of hwdetect" 
arch=('i686' 'x86_64')
url=http://www.webalice.it/giuseppe.cigala/$pkgname-$pkgver.tar.gz
license=('GPL') 
depends=('qt4' 'hwdetect')
source=(http://www.webalice.it/giuseppe.cigala/$pkgname-$pkgver.tar.gz) 
md5sums=('693fabbd0ca5ae3abbcffeed86958594')

build() {
  cd $startdir/src/$pkgname-$pkgver
  qmake || return 1
  make || return 1
  install -D -m 0755 bin/$pkgname $startdir/pkg/usr/bin/$pkgname	
}

