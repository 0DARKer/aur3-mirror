# Maintainer: Half Empty Hero

pkgname=scrivener
pkgver=beta
pkgrel=1
pkgdesc="A powerful content-generation tool for writers."
arch=(i686 x86_64)
url=http://literatureandlatte.com/scrivener.php
license=(Commercial)
depends=(aspell)
makedepends=()
[ "${CARCH}" == "x86_64" ] && depends=(aspell lib32-glib2)
source=("http://www.literatureandlatte.com/scrivenerforlinux/scrivener_1.0.1_beta.deb")
md5sums=('64f81e3bfe1b3b4c1cd455633eabcac3')

build()
{
  ar p scrivener_1.0.1_beta.deb data.tar.gz | tar xz
  mkdir -p "${pkgdir}"
  mv usr "${pkgdir}"/
}
