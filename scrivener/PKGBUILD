# Contributor: Dan Serban

pkgname=scrivener
pkgver=1.9beta13
pkgrel=1
pkgdesc="A powerful content-generation tool for writers"
arch=(i686)
url=http://literatureandlatte.com/scrivener.php
license=(Commercial)
depends=(aspell)
source=("http://www.literatureandlatte.com/scrivenerforwindows/Linux/LinuxScrivenerBeta13.tgz.tar.gz")
md5sums=('7d82adcba9b8f7ce0ebb3649f5c1914a')

build()
{
  mkdir -p $pkgdir/usr/bin
  echo "#!/bin/bash" > $pkgdir/usr/bin/scrivener
  echo "cd /usr/local/LiteratureAndLatte/bin" >> $pkgdir/usr/bin/scrivener
  echo "./Scrivener" >> $pkgdir/usr/bin/scrivener
  chmod +x $pkgdir/usr/bin/scrivener
  mkdir -p $pkgdir/usr/local
  mv LiteratureAndLatte $pkgdir/usr/local/
}
