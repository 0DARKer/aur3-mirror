# Maintainer: demian <mikar ατ gmx δοτ de>
pkgname=blockify
pkgver=0.2
pkgrel=1
pkgdesc="mute spotify songs you don't want to hear"
arch=('any')
url="https://github.com/mikar/blockify"
license=('WTFPL')
depends=('wmctrl' 'alsa-utils')
optdepends=('tk: for ui-support')
source=(https://github.com/mikar/blockify/raw/master/${pkgname}
        https://github.com/mikar/blockify/raw/master/${pkgname}-ui
        https://github.com/mikar/blockify/raw/master/list_example.txt
        )


build() {
    install -d  ${pkgdir}/usr/bin
    install -d  ${pkgdir}/usr/share/${pkgname}
    install -m755 ${srcdir}/${pkgname} ${pkgdir}/usr/bin/
    install -m755 ${srcdir}/${pkgname}-ui ${pkgdir}/usr/bin/
    install -m644 ${srcdir}/list_example.txt ${pkgdir}/usr/share/${pkgname}/
    ln -s /usr/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}.py

}
sha256sums=('9e2176a11fcc80d0313a1f0b6f2e5efe1b47b156ed47a4963bf10dceeb22b596'
            '29dc8398046ce6f346b909b1239d887ef55d94ebfde5398a5cbcac301415c423'
            '918a9ce494dab3ef8b5186b1984bc63f21e6539643a9ae1db0c98b4f3f0533e8')
