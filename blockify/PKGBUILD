# Maintainer: demian <mikar ατ gmx δοτ de>
pkgname=blockify
pkgver=1.0
pkgrel=2
pkgdesc="Mutes Spotify advertisements."
arch=("any")
url="https://github.com/mikar/blockify"
license=("MIT")
depends=("pygtk" "python2-wnck" "python2-dbus" "alsa-utils"
         "python2-docopt" "python2-setuptools")
optdepends=("pulseaudio")

source=("https://github.com/mikar/${pkgname}/archive/master.tar.gz")
sha256sums=("SKIP")

package() {
    cd "$srcdir"/${pkgname}-master

    python2 setup.py install --root="${pkgdir}"
}
