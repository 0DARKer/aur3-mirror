# Contributor/Submitter: <p.janouch@gmail.com>

pkgname=pivy-hg
pkgver=20100809
pkgrel=4
pkgdesc="Coin binding for Python"
arch=('i686' 'x86_64')
url="http://pivy.coin3d.org"
license=('custom')
depends=('python2' 'soqt')
makedepends=('swig1')
provides=('pivy')
conflicts=('pivy')

_pivyrev=6d1f447d9bd7
source=("http://hg.sim.no/Pivy/default/archive/${_pivyrev}.tar.bz2")

build() {
  cd "${srcdir}"/default-${_pivyrev} || return 1

  python2 setup.py install --root="${pkgdir}" || return 1

  install -D -m 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
md5sums=('bae836afa074993aff3785fa82649616')
