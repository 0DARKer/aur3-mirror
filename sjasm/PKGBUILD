license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source="http://home.wanadoo.nl/smastijn/sjasm42c.zip"
noextract=()
md5sums=('ad07a56c654d9b3ce97313f4b6f53f93')

build() {
  cd "$srcdir/"
  unzip -o sjasm42c.zip
}

package() {
  cd "$srcdir/"
  install -Dm0755 "$srcdir/sjasm" "${pkgdir}/usr/bin/sjasm"
}

