# Maintainer: Victor Marzo <samsaga2@gmail.com>
pkgname=sjasm
pkgver=0.42c
filever=42c
pkgrel=1
epoch=
pkgdesc="Sjasm is a Z80 assembler with lots of features."
arch=('i686', 'x86_64')
url="http://home.wanadoo.nl/smastijn/sjasm.html"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://home.wanadoo.nl/smastijn/sjasm$filever.zip)
noextract=()
md5sums=('ad07a56c654d9b3ce97313f4b6f53f93')

build() {
  cd "$srcdir"
  patch -Np1 < ../compilation.patch
  cd sjasmsrc$filever
  make
}

package() {
  cd "$srcdir/sjasmsrc$filever"
  make DESTDIR="$pkgdir/" install
}

