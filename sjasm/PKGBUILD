# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.
 
# Maintainer: Your Name <samsaga2@gmail.com>
pkgname=sjasm
pkgver=0.42
pkgrel=4
epoch=
pkgdesc="Sjasm Z80 assembler"
arch=('i686' 'x86_64')
url="http://home.online.nl/smastijn/sjasm.html"
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://home.online.nl/smastijn/sjasm42c.zip"
        "sjasm_add_headers.patch")
noextract=()
md5sums=('ad07a56c654d9b3ce97313f4b6f53f93'
	 '401c6249370472b01a5e5ce603eb813e')
 
build() {
  cd "${srcdir}/sjasmsrc42c"
  patch -Np1 --binary -i ../sjasm_add_headers.patch
  make
}
 
package() {
  cd "${srcdir}/sjasmsrc42c"
  install -Dm0755 "sjasm" "${pkgdir}/usr/bin/sjasm"
}
