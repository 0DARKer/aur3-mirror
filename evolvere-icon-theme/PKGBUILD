# Mantainer: Janus <janus@rtfm.org.ar>
# Upstream: Frank Souza

_pkgbasename=evolvere
_pkgvariant=dark-fallback
pkgname=$_pkgbasename-icon-theme
pkgver=1.1.9
pkgrel=2
pkgdesc="A smooth icon theme for your Linux workspace - Dark Fallback variant (edit de PKGBUILD to select another variant)"
arch=('any')
url="http://gnome-look.org/content/show.php?content=164338"
license=('Creative Commons by-nc-nd')
source=("http://www.SEE.PKGBUILD.FOR.DOWNLOAD.INSTRUCTIONS/$_pkgbasename.tar-$pkgver.tar.gz")
# This Mediafire link is incorrect.
# Please download the file manually from http://adf.ly/gJ1xj
# By request of the developer (see http://gnome-look.org/content/show.php?content=164338)
# this file will not be hosted in another server. 
sha256sums=('de1af51037710c6616d3fc872b61aec62b5a3303f53a64077ef763c190a9a7f5')

package() {
  # Create destination folder
  install -d "$pkgdir"/usr/share/icons

  # Install icon theme
  cp -r $_pkgbasename-$_pkgvariant "$pkgdir"/usr/share/icons/$_pkgbasename
  find $pkgdir/usr/share/icons/$_pkgbasename -type f -print|xargs chmod 644 # no exec bit for files
}
