# Upstream: Frank Souza

pkgname=evolvere-icon-theme
pkgver=1.1.8.2
pkgrel=1
pkgdesc="A smooth icon theme for your Linux workspace - Dark version"
arch=('any')
url="http://gnome-look.org/content/show.php?content=164338"
license=('Creative Commons by-nc-nd')
source=("http://download1112.mediafire.com/36u6sv7tx6cg/89brkb98czl2cyt/evolvere-dark-fallback-1.1.8-2.tar.gz")
# This Mediafire link is incorrect.
# Please download the file manually from http://adf.ly/lJ63c
# By request of the developer (see http://gnome-look.org/content/show.php?content=164338)
# this file will not be hosted in another server. 
sha256sums=('86b3e38f273b9c9e2d3b852d2ebf4b4ed8b82d1c6693480047e2e4656f82402f')

package() {
  # Create destination folder
  install -d "$pkgdir"/usr/share/icons

  # Install icon theme
  cp -r evolvere-dark-fallback "$pkgdir"/usr/share/icons
  find $pkgdir/usr/share/icons/evolvere-dark-fallback -type f -print|xargs chmod 644 # no exec bit for files
}
