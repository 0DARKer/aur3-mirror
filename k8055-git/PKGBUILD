# Maintainer: Bernd Amend <berndamend web de>

_gitname=k8055
pkgname=${_gitname}-git
pkgver=4ca71d2
pkgrel=1
pkgdesc="git version of k8055"
arch=('i686' 'x86_64')
url="https://github.com/jeremyz/k8055"
license=('LGPL')
conflicts=('libk8055')
provides=('libk8055')
source=("git+https://github.com/jeremyz/${_gitname}.git")
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  # Use the tag of the last commit
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $_gitname
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX="$pkgdir/usr" ..
  make
}

package() {
	cd $_gitname/build
	make install
  
#	install -d -m755 "${pkgdir}/usr/lib/udev/rules.d/"
#	install -m644 "../velleman.rules" "${pkgdir}/usr/lib/udev/rules.d/70-velleman.rules"
	ln -s "libk8055-0.5.0.so" "${pkgdir}/usr/lib/libk8055.so"
	ln -s "libk8055++-0.5.0.so" "${pkgdir}/usr/lib/libk8055++.so"
}
