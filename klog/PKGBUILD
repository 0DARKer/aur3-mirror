# Maintainer: Frikilinux <frikilinux at frikilinux.com.ar>

pkgname=klog
pkgver=0.5.7
pkgrel=1
pkgdesc="Ham radio logging"
url="http://jaime.robles.es/klog/"
license=('GPL2')
arch=('i686' 'x86_64')
depends=('kdelibs' 'hamlib')
makedepends=('automoc4' 'cmake')
conflicts=()
source="${url}download/${pkgname}-${pkgver}.tar.gz"
sha256sums=('88c5e3817c4145d457fe874f35c2ae3de5b0d95d8454e1da745c519410945e6b')

build() {
    cd "${srcdir}"/${pkgname}-${pkgver}
    cmake  -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=RELEASE                                                       
}
package() {
    cd "${srcdir}"/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}

