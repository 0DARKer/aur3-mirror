# Contributor: Mark Taylor <skymt0@gmail.com>

pkgname=clex
pkgver=4.5
pkgrel=1
pkgdesc="A file manager with a full-screen user interface"
arch=('i686' 'x86_64')
url="http://www.clex.sk/"
license=('GPL')
depends=('ncurses')
source=(http://www.$pkgname.sk/download/$pkgname-$pkgver.tar.gz)
md5sums=('358fde8d23cc8865c2f1d1e28c662891')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make || return 1
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
