# Contributor: Mark Taylor <skymt0@gmail.com>

pkgname=clex
pkgver=4.6.4
pkgrel=1
pkgdesc="A file manager with a full-screen user interface"
arch=('i686' 'x86_64')
url="http://www.clex.sk/"
license=('GPL')
depends=('ncurses')
source=(http://www.$pkgname.sk/download/$pkgname-$pkgver.tar.gz)
md5sums=('857f75f30ba117dbfb2c0f214ed2f8d2')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
