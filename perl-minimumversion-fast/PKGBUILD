# Maintainer: Sial <NAME at cpan dot org>

_perlmod=Perl-MinimumVersion-Fast
pkgname=perl-minimumversion-fast
pkgver=0.10
pkgrel=1
pkgdesc="Find a minimum required version of perl for Perl code"
arch=(any)
url="http://search.cpan.org/~tokuhirom/${_perlmod}-${pkgver}/"
license=('GPL' 'PerlArtistic')
depends=('perl-compiler-lexer')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/T/TO/TOKUHIROM/${_perlmod}-${pkgver}.tar.gz)
md5sums=('03a0b94f7337617f13d76a8e1c15b90e')

build() {
  cd "${srcdir}/${_perlmod}-${pkgver}"

  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='${pkgdir}'" \
    PERL_MB_OPT="--installdirs vendor --destdir '${pkgdir}'" \
    MODULEBUILDRC=/dev/null
  /usr/bin/perl Build.PL
  ./Build
}

check() {
  cd ${_perlmod}-${pkgver}
  ./Build test
}

package() {
  cd "${srcdir}/${_perlmod}-${pkgver}"
  ./Build install DESTDIR="${pkgdir}/"
}

# vim:set ts=2 sw=2 et:
