pkgname='perl-scope-guard'
pkgver='0.20'
pkgrel='1'
pkgdesc="lexically-scoped resource management"
arch=('any')
url='http://search.cpan.org/dist/Scope-Guard'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/C/CH/CHOCOLATE/Scope-Guard-0.20.tar.gz')
md5sums=('495d5ae16a2df8128fd068c386c9d4ac')

build() {
  DIST_DIR="${srcdir}/Scope-Guard-0.20"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
