# Contributor: Murtuza Akhtari <inxsible at gmail dot com>

pkgname=mobilemediaconverter
pkgver=1.7.1
pkgrel=1
pkgdesc="Converts mp3, wma, ogg, wav audio files to AMR files and vice-versa. Converts wmv, mpeg, wmv, avi, flv video files to 3GP and vice-versa."
arch=('i686' 'x86_64')
url="http://www.miksoft.net/mobileMediaConverter.htm"
license=('GPL')
source=(http://www.miksoft.net/products/mmc-older/mmc-lin-171.tar.gz
	$pkgname.desktop
        $pkgname.png
	$pkgname.sh)
md5sums=('f87887603633403ba3a3ddf68a20a936'
         '9864d1ffc3c368aa57429d66e6f8c537'
         '9d4309f98f3689dfc21e641e5773cfd7'
         'a9138d318b3f6291b1d23886e9b1e8b6')

if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='amd64'
    depends=('lib32-zlib' 'lib32-gtk2>=2.22' 'lib32-gcc-libs>=4.5.1' 'lib32-glibc>=2.12' 'lib32-libstdc++5>=3.3.0')
else
    ARCH='i386'
    depends=('zlib' 'gtk2>=2.22' 'gcc-libs>=4.5.1' 'glibc>=2.12' 'libstdc++5>=3.3.0')
fi

build() {

	cd $srcdir/
	mkdir -p $pkgdir/usr/share/$pkgname
	install -Dm755 ffmpeg $pkgdir/usr/share/$pkgname/ffmpeg
	install -Dm644 libopencore-amrnb.so $pkgdir/usr/share/$pkgname/libopencore-amrnb.so
	install -Dm644 libopencore-amrnb.so.0 $pkgdir/usr/share/$pkgname/libopencore-amrnb.so.0
	install -Dm644 libopencore-amrnb.so.0.0.2 $pkgdir/usr/share/$pkgname/libopencore-amrnb.so.0.0.2
	install -Dm644 libopencore-amrwb.so $pkgdir/usr/share/$pkgname/libopencore-amrwb.so
	install -Dm644 libopencore-amrwb.so.0 $pkgdir/usr/share/$pkgname/libopencore-amrwb.so.0
	install -Dm644 libopencore-amrwb.so.0.0.2 $pkgdir/usr/share/$pkgname/libopencore-amrwb.so.0.0.2
	cp -r icons/ $pkgdir/usr/share/$pkgname
	cp -r mmc\ Libs/ $pkgdir/usr/share/$pkgname
	cp -r profiles/ $pkgdir/usr/share/$pkgname
	install -Dm755 mmc $pkgdir/usr/share/$pkgname/$pkgname
	install -Dm644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
	install -Dm644 $srcdir/$pkgname.png $pkgdir/usr/share/pixmaps/$pkgname.png
	install -Dm755 $srcdir/$pkgname.sh $pkgdir/usr/bin/$pkgname


}