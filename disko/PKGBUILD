# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=disko
pkgver=1.7.0
pkgrel=1
pkgdesc="An (UI) application framework for the fast and simple development of flexible applications on Embedded Linux systems, with a focus on interactive user interfaces."
arch=(i686 x86_64)
url="http://www.diskohq.com/"
license=('LGPL')
depends=('xine-lib' 'gstreamer0.10' 'freetype2' 'libpng' 'libsigc++' 'sqlite3' 'curl')
source=("${url}repository/ubuntu/pool/${pkgname}_${pkgver}.tar.gz")
md5sums=('23162e567fd980c20ba40b574afd9276')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  sed \
    -e "s|MMSFiletransfer::\(MMSFiletransfer*\)|\1|" \
    -e "s|MMSFiletransfer(const|MMSFiletransfer::&|" \
    -i src/mmstools/mmsfiletransfer.cpp

  scons prefix=/usr destdir="$pkgdir" graphics=x11
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  scons install
}
