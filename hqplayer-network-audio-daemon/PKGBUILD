## Maintainer: AudioLinux  <audiolinux AT fastmail DOT fm>

pkgname=hqplayer-network-audio-daemon
_debpkgver=2.0.5
pkgver=$_debpkgver
pkgrel=4
pkgdesc="Signalyst Network Audio Daemon"
arch=('x86_64')
url="http://www.signalyst.com/consumer.html"
license=('custom')
depends=('alsa-lib' 'gcc-libs' 'glibc')
source=("http://www2.signalyst.com/bins/naa/debian_wheezy/jessie/networkaudiod_2.0.5-20_amd64.deb" 'networkaudio@.service' 'copyright')
sha256sums=('8ce199aea081231a1ce3e5a643f16aa275a32b21ded4ae69b877ab3730994bfc' 'fbd3db7075350a4f5a9e9f2f8cfc179958d90bc7a731182df4630e8ea56fc441' '9dfe227985be1cb760d1ac3166b13e46345c64132f47a3f18f82ec0d5c121118')

package() {
 cd "$srcdir"
  bsdtar xf data.tar.xz -C "$pkgdir"
  install -Dm644 "networkaudio@.service" \
    "$pkgdir/usr/lib/systemd/system/networkaudio@.service"
    
  install -Dm644 "copyright" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING"
    
rm -r "$pkgdir/etc/init.d"
}