pkgname=hqplayer-network-audio-daemon
_debpkgver=2.0.5
pkgver=$_debpkgver
pkgrel=2
pkgdesc="Signalyst Network Audio Daemon"
arch=('x86_64')
url="http://www.signalyst.com/consumer.html"
license=('custom')
depends=('lib32-alsa-lib' 'lib32-gcc-libs')
source=("http://www2.signalyst.com/bins/naa/debian_wheezy/networkaudiod_2.0.5-20_i386.deb" 'networkaudio@.service' 'copyright')
sha256sums=('369bc3379b11fb05813567d47278f8f24711bb5240269ec725c8f17adecf1a21' 'fbd3db7075350a4f5a9e9f2f8cfc179958d90bc7a731182df4630e8ea56fc441' 'f3271bca821692dec2af305ed5e8f3d3f721255f0011bd4b7545aaa1e2a16100')

package() {
 cd "$srcdir"
  bsdtar xf data.tar.gz -C "$pkgdir"
  install -Dm644 "networkaudio@.service" \
    "$pkgdir/usr/lib/systemd/system/networkaudio@.service"
    
  install -Dm644 "copyright" \
    "$pkgdir/usr/share/licenses/$pkgname/COPYING"
    
rm -r "$pkgdir/etc/init.d"
}