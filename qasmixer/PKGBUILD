pkgname='qasmixer'
pkgver=0.14.0
pkgrel=2
pkgdesc="A mixer application for the Linux sound system ALSA powered by a Qt GUI."
arch=('i686' 'x86_64')
license=('GPL3')
url="http://xwmw.org/qasmixer/"
depends=('qt')
makedepends=('cmake')
install='qasmixer.install'
source=("http://sourceforge.net/projects/${pkgname}/files/${pkgver}/${pkgname}_${pkgver}.tar.bz2")
md5sums=('3d5bf4b318d62fb4504a0e8f80665128')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ../${pkgbase}_${pkgver}
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR="${pkgdir}" install
}

