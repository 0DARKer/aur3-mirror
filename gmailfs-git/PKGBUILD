# Maintainer: Daniel Micay <danielmicay@gmail.com>

pkgname=gmailfs-git
_pkgname=gmailfs
pkgver=20110628
pkgrel=1
pkgdesc="GMail Filesystem over FUSE"
arch=('any')
license=('GPL')
depends=('python2' 'python-fuse' 'libgmail-cvs')
makedepends=('git')
url="http://sr71.net/projects/$_pkgname"
source=($pkgname-python27.patch)
md5sums=('6b74d46c91de10eabff6f5c2e83db2bb')
backup=(etc/$_pkgname/$_pkgname.conf)
conflicts=('gmailfs')
provides=('gmailfs')

_gitroot="git://git.sr71.net/gmailfs.git"
_gitname="gmailfs"

build() {
  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ] ; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi

  msg "GIT checkout done or server timeout"

  rm -rf "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  patch -i ../$pkgname-python27.patch
  install -Dm755 $_pkgname.py "$pkgdir/usr/bin/$_pkgname"
  install -Dm644 conf/$_pkgname.conf "$pkgdir/etc/$_pkgname/$_pkgname.conf"
}
