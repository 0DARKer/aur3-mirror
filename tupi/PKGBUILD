pkgname=tupi
pkgver=0.2
pkgrel=1
pkgdesc="A 2D animation tool for 8-100 years old kids."
url="http://www.maefloresta.com/"
license=("GPL3")
arch=("i686" "x86_64")
depends=("qt4" "ffmpeg" "aspell")
makedepends=("ruby" "quazip")
source=(http://sourceforge.net/projects/tupi.berlios/files/tupi_0.2-git02.tar.gz/download)
md5sums=('8f491e7034be24f04ca7cfe34c26455a')

build() {
  cd "${srcdir}/tupi-${pkgver}-git02"
  ./configure --prefix=/usr/share/tupi
  make
  
}
  
package() {
  cd "${srcdir}/tupi-${pkgver}-git02"
  make DESTDIR=${pkgdir} install
}