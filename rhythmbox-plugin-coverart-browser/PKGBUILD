# Maintainer: Zhengyu Xu <xzy3186[at]gmail[dot]com>
pkgname=rhythmbox-plugin-coverart-browser
pkgver=0.8
pkgrel=1
pkgdesc="a Rhythmbox plugin that lets you browse and play your music via an album art view"
url="https://github.com/fossfreedom/coverart-browser"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('glib2' 'gtk3' 'rhythmbox' 'python2-mako' 'mutagen' 'python2-requests'
'python2-lxml' 'rhythmbox-plugin-coverart-search-providers')
conflicts=('rhythmbox-plugin-coverart-browser-git')

source=("https://github.com/fossfreedom/coverart-browser/archive/v${pkgver}.tar.gz")
sha256sums=("48bc5f227f102092cd74ed40fea6980b50275db40b91c25ccfc8effd909f6b86")
install=$pkgname.install
package() {
  cd ${srcdir}/coverart-browser-${pkgver}

  make DESTDIR=${pkgdir} install
}

