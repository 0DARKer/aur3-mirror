pkgname=quamachi
_realname_=Quamachi
pkgver=0.7.0
pkgrel=1
pkgdesc="A Hamachi GUI for Linux"
arch=("any")
url="http://code.google.com/p/quamachi/"
license=("LGPL3")
depends=("pyqt" "logmein-hamachi>=2")
optdepends=("mtr: A ping GUI"
			"putty: An SSH GUI"
			"gksu: A SU(do) GUI"
			"terminal: A shell GUI"
			"vinagre: A VNC client GUI")
install="${_realname_}.install"
source=(http://prdownloads.sourceforge.net/${pkgname}/${_realname_}-${pkgver}.tar.bz2)

build() {
	cd "${srcdir}"/${_realname_}/Build

	#make uninstall
	#make clean
	make
}

package() {
	cd "${srcdir}"/${_realname_}/Build

	make DESTDIR="${pkgdir}" install

	# Messages
	msg "Seek further information or send feedback via the 'Help' menu."
}

sha1sums=('74aec7977f2fdccb60235bb37f6cdf0797c39886')
