# Quamachi: Installer: Arch
# Contributor: Xavion <Xavion (dot) 0 (at) Gmail (dot) com>

pkgname=quamachi
realname=Quamachi
pkgver=0.5.5
pkgrel=1
pkgdesc="A Hamachi GUI for Linux"
arch=("any")
url=http://${realname}.Xavion.name
license=("LGPL3")
depends=("python-qt>=4.5" "logmein-hamachi>=2")
#depends=("python>=3" "pyqt-dev>=4.5" "logmein-hamachi>=2")
makedepends=("make>=3.80")
optdepends=("mtr: A ping GUI"
			"putty: An SSH GUI"
			"gksu: A SU(do) GUI"
			"terminal: A shell GUI"
			"vinagre: A VNC client GUI")
install="${realname}.install"
source=(http://prdownloads.sourceforge.net/${pkgname}/${realname}-${pkgver}.tar.bz2)

build() {
	cd ${srcdir}/${realname}/Build

	#make uninstall || return 1
	#make clean || return 1
	make || return 1
}

package() {
	cd ${srcdir}/${realname}/Build

	make DESTDIR=${pkgdir} install || return 1

	# Messages
	msg "Seek further information or send feedback via the 'Help' menu."
}

sha1sums=('f303356739e4126870a90a9b06fb86393f8f08db')
