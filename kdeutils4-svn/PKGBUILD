# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdeutils4-svn
pkgver=1219185
pkgrel=1
pkgdesc="KDE4 General Utilities"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdebase4-workspace-git' 'qimageblitz' 'kde-agent' 'kdebindings-python' 'system-config-printer-common' 'pycups')
makedepends=('subversion' 'cmake' 'docbook-xsl' 'qjson')

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdeutils
_svnmod=kdeutils

build() {
. /etc/profile.d/kde-git.sh
cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  mkdir $_svnmod-build
  cd $_svnmod-build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=debugfull \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/opt/kde4
  make
}

package() {
  cd $srcdir/$_svnmod-build
  make DESTDIR=$startdir/pkg install
  find "${pkgdir}" -name '*.py' | xargs sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|'
  rm -rf $startdir/src/$_svnmod-build
}