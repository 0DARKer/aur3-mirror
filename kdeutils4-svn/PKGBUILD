# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdeutils4-svn
pkgver=1236301
pkgrel=1
pkgdesc="KDE4 General Utilities"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdebase4-runtime-git' 'libarchive' 'kdebase4-git'  'qimageblitz' 'kde-agent' 'kdebindings-python' 'system-config-printer-common')
makedepends=('subversion' 'cmake' 'automoc4' 'qjson' 'kdebase4-workspace-git')
optdepends=('p7zip' 'zip' 'unzip' 'unrar')
install='kdeutils4-svn.install'

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdeutils
_svnmod=kdeutils

build() {
  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk $_svnmod
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi 

  mkdir ${srcdir}/build
  cd ${srcdir}/build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}

 