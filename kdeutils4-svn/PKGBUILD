# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdeutils4-svn
pkgver=1115906
pkgrel=1
pkgdesc="KDE4 General Utilities"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdebase4-workspace-svn' 'gmp' 'kdebindings-python')
makedepends=('subversion' 'cmake')
provides=(kdeutils)
conflicts=(kdeutils)
source=()
md5sums=()

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdeutils
_svnmod=kdeutils

build() {
 cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
  rm -rf $startdir/src/$_svnmod-build
}
