pkgname=ttf-roboto
pkgver=20110115
pkgrel=4
pkgdesc='The new system font of Android 4, Codename "Ice Cream Sandwich".'
arch=('any')
license=('Apache') 
url="http://developer.android.com/sdk"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=$pkgname.install
source=("http://developer.android.com/design/static/download/Roboto_Hinted_20111129.zip") # this might change in the future.

package()
{
  cd "$srcdir/Roboto_Hinted_20111129"
  install -d $pkgdir/usr/share/fonts/TTF/ 
  install -m644 *.ttf $pkgdir/usr/share/fonts/TTF/ 
}


sha512sums=('2c576d9d166f929d20eeb9679b804cd549790ad3087bc91ddc5836b75393ebf1ad7aa450e024a43492bb5d05a84c0cdb788aecab0f401453e2ecd83afa03139c')
