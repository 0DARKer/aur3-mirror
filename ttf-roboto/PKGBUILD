# Maintainer: Michael Duell <mail@akurei.me> PGP-Key: 6EE23EBE

pkgname=ttf-roboto
pkgver=4.0r14 # same as SDK
pkgrel=1
pkgdesc='The new system font of Android 4, Codename "Ice Cream Sandwich".'
arch=('any')
license=('GPL') # See https://groups.google.com/group/android-building/browse_thread/thread/ade6fcd847fbb3fb
url="http://developer.android.com/sdk"
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=$pkgname.install
source=("http://iowolf.de/roboto.zip") # this might change in the future.

package()
{
        install -d $pkgdir/usr/share/fonts/TTF/ 
        install -m644 *.ttf $pkgdir/usr/share/fonts/TTF/ 
}


sha512sums=('6f387b56cfe80c0a374558d469e9c9415c49b5f5666cd1347caec6fa7420a8db98e899296408a8320923d516c1a8c79c83653c022ea5671f8a9f4cc0d794b855')
