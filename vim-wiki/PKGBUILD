pkgname=vim-wiki
pkgver=1.1.1
_scriptid=13756
pkgrel=1
pkgdesc="A personal wiki"
arch=('i686' 'x86_64')
url="http://code.google.com/p/vimwiki/"
license=('GPL')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.vba.gz::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid})
md5sums=('ce8d3911e6d729a7ef10b8afd7472e20')

build()
{
	cd $srcdir
	vim -c 'so %' -c 'q' vimwiki_1_1_1.vba
}
