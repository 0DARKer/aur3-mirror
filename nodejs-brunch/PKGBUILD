# Author: Brunch team (http://brunch.io)
# Maintainer: tosh <tosh@blossom.io>
# Maintainer: nikgraf <nik@deck.cc>
# Maintainer: paulmillr <paul@paulmillr.com>
_npmname=brunch
pkgname=nodejs-brunch # All lowercase
pkgver=1.3.0
pkgrel=1
pkgdesc="HTML5 applications made easy"
arch=(any)
url="http://brunch.io/"
license=(MIT)
depends=(nodejs)
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(671212a6ee40231f0564225dee30a6e5f6072a24)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
