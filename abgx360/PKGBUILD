# Contributor: Daniel Spector <dakor1 at gmail dot com>
# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=abgx360
pkgver=1.0.6
pkgrel=1
pkgdesc="An app for checking Xbox 360 ISOs"
arch=('i686' 'x86_64')
url="http://abgx360.net/"
license=('unknown')
depends=('curl' 'zlib')
source=(http://abgx360.x-scene.com/${pkgname}-${pkgver}.tar.gz)
md5sums=('04b0c9e0461faa92ca5f8fac78bafe57')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
