pkgname=vim-repeat
pkgver=2.0
_scriptid=8206
pkgrel=1
pkgdesc="Use the repeat command (.) with supported plugins"
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=2136"
license=('custom')
groups=('vim-plugins')
source=(${pkgname}.vim::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid})
md5sums=('c73d6c832ca82ec292d0fda1d1f1a613')

build() {
    install -d ${pkgdir}/usr/share/vim/vimfiles/autoload
    install -D -m644 ${srcdir}/vim-repeat.vim ${pkgdir}/usr/share/vim/vimfiles/autoload || return 1
}
