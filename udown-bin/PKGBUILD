pkgname=udown-bin
pkgver=1.0.0
pkgrel=1
pkgdesc="Official web disk client for 115 Web Disk"
arch=('i686')
url="http://u.115.com/download.html"
license=('custom')
depends=('gtk2')
source=(http://wine-packages.googlecode.com/files/udown.tar.bz2
        udown.desktop
        udown.png)
md5sums=('d23a710ab4a2378a4a742b65df36a7b8'
         '12cde4e4892119ebc89a7e21c109d000'
         '5c16431d28d2c0203f4dced2de853ac6')

build(){
  cd $srcdir
  mkdir -p $pkgdir/opt/udown/
  mv udown/* $pkgdir/opt/udown/
  mkdir -p $pkgdir/usr/share/applications/
  mv udown.desktop $pkgdir/usr/share/applications/
  mv udown.png $pkgdir/opt/udown/
}
