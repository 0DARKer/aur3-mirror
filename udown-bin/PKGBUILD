pkgname=udown-bin
pkgver=0.9.11.2335_preview
pkgrel=1
pkgdesc="Official web disk client for 115 Web Disk"
arch=('i686')
url="http://bbs.ylmf.net/forum.php?mod=viewthread&tid=1855287"
license=('custom')
depends=('gtk2' 'wxgtk' 'openssl')
source=('http://bbs.ylmf.net/forum.php?mod=attachment&aid=MjE5NTMxOHxkMWZhZTNhM3wxMzAxNDUwNjYxfDA%3D')
md5sums=('3ed94499e3f9d2b89160fc7dfa0cf51c')
         
build(){
	cd $srcdir/udown-0.9.11.2335_preview
  mkdir -p $pkgdir/usr/lib/YlmfUDown/res
	install res/115.gif $pkgdir/usr/lib/YlmfUDown/res/
  install res/udown_Complete.wav $pkgdir/usr/lib/YlmfUDown/res/

	mkdir -p $pkgdir/usr/share/pixmaps
	install res/115udown_logo-48.png $pkgdir/usr/share/pixmaps

	mkdir -p $pkgdir/usr/bin
	install UDown $pkgdir/usr/bin/
	chmod a+x $pkgdir/usr/bin/UDown
	
	mkdir -p $pkgdir/usr/share/applications/
  install 115udown.desktop $pkgdir/usr/share/applications/
}

