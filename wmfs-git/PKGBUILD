pkgname=wmfs-git
pkgver=20101119
pkgrel=1
pkgdesc="A lightweight and highly configurable tiling window manager for X"
arch=('i686' 'x86_64')
url="http://www.wmfs.info/"
license=('BSD')
depends=('libxft' 'imlib2' 'libxinerama' 'libxrandr')
makedepends=('git')
#optdepends=('doxygen')
provides=('wmfs')
conflicts=('wmfs')
source=()
md5sums=()

_gitroot="git://git.wmfs.info/wmfs.git"
#_gitroot="git://github.com/xorg62/wmfs.git"
_gitname="wmfs"

build() {
  cd ${srcdir}

  msg "Connection au serveur GIT…"
  if [[ -d ${_gitname} ]]; then
    (cd ${_gitname} && git pull origin)
  else
    git clone ${_gitroot} ${_gitname}
  fi
  msg "Synchonisation avec le serveur GIT maitre finie, ou aucune réponse"
  msg "Début de la compilation…"

  rm -rf ${_gitname}-build
  msg `git clone ${_gitname} ${_gitname}-build`

  cd ${_gitname}-build

  # "-Wl,--as-needed" caused the linker error
  # LDFLAGS="-Wl,--hash-style=gnu"
  ./configure --prefix /usr \
    --xdg-config-dir /etc/xdg \
    --man-prefix /usr/man
  make
}

package() {
  cd ${srcdir}/${_gitname}-build

  make DESTDIR=${pkgdir} install

  install -D -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
