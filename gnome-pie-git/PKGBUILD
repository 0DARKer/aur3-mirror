# Maintainer: M0Rf30
pkgname=gnome-pie-git
pkgver=20110927
pkgrel=1
pkgdesc="A visual application launcher for gnome."
arch=('i686' 'x86_64')
url="https://github.com/Simmesimme/Gnome-Pie"
license=('GPL')
depends=('gtk2' 'gnome-menus' 'libappindicator' 'cairo' 'libgee' 'libxml2' 'libxtst')
makedepends=('gcc' 'vala' 'cmake')
_gitroot="git://github.com/Simmesimme/Gnome-Pie.git"
_gitname="gnome-pie"
build() {
	  cd $startdir/src
  msg "Connecting to GIT server...."

  if [ -d $startdir/src/$_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  
  cd $srcdir/Gnome-Pie
  msg "Building gnome-pie"
  ./make.sh
}

package() {
	cd $srcdir/${_gitname}
	make DESTDIR=${pkgdir} install
}
