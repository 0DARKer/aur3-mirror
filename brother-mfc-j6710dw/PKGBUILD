# Contributor: Libernux <dutchman55@gmx.com>
pkgname="brother-mfc-j6710dw"
pkgver="3.0.0"
pkgrel=1
pkgdesc="LPR and CUPS driver for the Brother MFC-J6710DW"
url="http://solutions.brother.com/linux/en_us/"
arch=('i686' 'x86_64')
license=('custom:brother commercial license')
depends=('cups')
install='brother-mfc-j6710dw.install'
source=(
	"http://www.brother.com/pub/bsc/linux/dlf/mfcj6710dwlpr-$pkgver-$pkgrel.i386.rpm"
	"http://www.brother.com/pub/bsc/linux/dlf/mfcj6710dwcupswrapper-$pkgver-$pkgrel.i386.rpm"
	'cupswrapper-license.txt'
	'lpr-license.txt'
)
md5sums=(
	'b0261c99a29c4a7039f8dc3f047330ce'
	'6171ec18a24481c6a1365cb5d95562a4'
	'97ad0cffd216059e9d1d3121899d8646'
	'5e87a3dc0f3e3438c088eda0f3565f0d'
)
build() {
	cd "$srcdir/opt/brother/Printers/mfcj6710dw/cupswrapper"
#  generate the ppd
# ppd-file is already in the package
#  generate the wrapper
	echo '#! /bin/sh' > genwrapper
	sed -n '/^printer_model/,/^device_model/p' cupswrappermfcj6710dw >>genwrapper
	echo 'tmp_filter=brother_lpdwrapper_mfcj6710dw' >>genwrapper
	echo 'touch $tmp_filter' >>genwrapper
	sed -n '/cat <<!ENDOFWFILTER!/,/!ENDOFWFILTER!/p' cupswrappermfcj6710dw >>genwrapper
	sed -i  's|/usr/share/cups/model/Brother|/usr/share/cups/model|g' genwrapper
	chmod +x genwrapper
	./genwrapper
#  generate other
	rm "$srcdir/opt/brother/Printers/mfcj6710dw/cupswrapper/cupswrappermfcj6710dw"
	rm "$srcdir/opt/brother/Printers/mfcj6710dw/cupswrapper/genwrapper"
	rm "$srcdir/opt/brother/Printers/mfcj6710dw/inf/setupPrintcapij"
}
package() {
	cd "$pkgdir"
	cp -R "$srcdir/opt" "$pkgdir"
	cp -R "$srcdir/usr" "$pkgdir"
	install -m 644 -D "$srcdir/opt/brother/Printers/mfcj6710dw/cupswrapper/brother_mfcj6710dw_printer_en.ppd" "$pkgdir/usr/share/cups/model/brother_mfcj6710dw_printer_en.ppd"
	install -m 755 -D "$srcdir/opt/brother/Printers/mfcj6710dw/cupswrapper/brother_lpdwrapper_mfcj6710dw" "$pkgdir/usr/lib/cups/filter/brother_lpdwrapper_mfcj6710dw"
	install -m 644 -D "$startdir"/cupswrapper-license.txt "${pkgdir}/usr/share/licenses/${pkgname}/cupswrapper-licence.txt"
	install -m 644 -D "$startdir"/lpr-license.txt "${pkgdir}/usr/share/licenses/${pkgname}/lpr-licence.txt"
}