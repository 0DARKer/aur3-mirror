# Maintainer: Stefan Wilkens <stefanwilkens@gmail.com>

pkgname=xmoto-svn
pkgver=3400
pkgrel=1
pkgdesc="A challenging 2D motocross platform game, where physics play an important role in gameplay. Developement version."
arch=('i686' 'x86_64')
url="http://xmoto.tuxfamily.org"
license=('GPL')
depends=('bzip2' 'libjpeg' 'libpng' 'lua' 'sdl_mixer' 'ode' 'curl>=7.16.2' 
	 'mesa' 'libxdamage' 'libxfixes' 'sqlite3' 'sdl_ttf' 'desktop-file-utils'
	 'subversion' 'sdl_net' 'libxdg-basedir' 'libxml++')
conflicts=('xmoto')
provides=('xmoto')
source=()
md5sums=()
_svntrunk=svn://svn.tuxfamily.org/svnroot/xmoto/xmoto/trunk
_svnmod=xmoto

build() {
  cd $startdir/src/
  if [ -d $_svnmod/.svn ]; then
      cd $_svnmod
      svn update
      cd ..
  else
      svn co $_svntrunk --config-dir ./ $_svnmod
  fi
  cd $_svnmod
  msg "SVN checkout done or server timeout"
  msg "starting ./bootstrap"
  chmod 755 bootstrap
  ./bootstrap
  msg "bootstrap ended ... starting ./configure"
  ./configure --prefix=/usr
  msg "starting make ..."
  make || return 1
  make DESTDIR=$startdir/pkg mangdir=/usr/man/man6 install
}

package() {

# install desktop file
install -Dm0644 ${srcdir}/xmoto/extra/xmoto.desktop ${pkgdir}/usr/share/applications/xmoto.desktop

#install icon
install -Dm0644 ${srcdir}/xmoto/extra/xmoto.xpm ${pkgdir}/usr/share/pixmaps/xmoto.xpm

}