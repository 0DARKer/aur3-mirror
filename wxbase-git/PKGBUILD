# Contributor: 

pkgname="wxbase-git"
pkgver=head
pkgrel=1
pkgdesc="wxWidgets base libraries for no X install (git version)" 
arch=('i686' 'x86_64')
url="http://wxwidgets.org"
license=('custom:wxWindows')
makedepends=('git')
conflicts=('wxgtk' 'wxgtk2.8')
source=("git+git://github.com/wxWidgets/wxWidgets.git")
md5sums=('SKIP')

pkgver() {
  cd "${SRCDEST}/wxWidgets"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "${srcdir}/wxWidgets"
  ./configure --prefix=/usr --libdir=/usr/lib --disable-gui 
  make
} 

package() {
  cd "${srcdir}/wxWidgets"
  make DESTDIR="${pkgdir}" install
  find "${pkgdir}" -type d -name .git -exec rm -r '{}' +
  install -D -m644 docs/licence.txt "${pkgdir}/usr/share/licenses/wxWidgets/LICENSE"
}
