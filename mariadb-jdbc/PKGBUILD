# Maintainer: 謝致邦 <Yeking@Red54.com>

pkgname=mariadb-jdbc
pkgver=1.0.0
pkgrel=1
pkgdesc="The official JDBC driver for MariaDB"
arch=('any')
url="https://downloads.mariadb.org/client-java/"
license=('LGPL2.1')
depends=('java-runtime')
provides=('mysql-jdbc')
conflicts=('mysql-jdbc')
replaces=('mysql-jdbc')
source=("http://ftp.osuosl.org/pub/mariadb/mariadb-java-client/mariadb-client-$pkgver.jar")
md5sums=('44bbad4093e7245191c44659a49aec5c')

package() {
    install -D $srcdir/mariadb-client-$pkgver.jar $pkgdir/usr/share/java/mariadb-jdbc/mariadb-client-$pkgver.jar
}
