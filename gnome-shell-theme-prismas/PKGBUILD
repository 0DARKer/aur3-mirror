# Author:   plaidcounty <http://plaidcounty.deviantart.com/>
# Maintainer: sanderd17 <sanderd17 at gmail dot com>

pkgname=gnome-shell-theme-prismas
pkgver=1.0
pkgrel=2
pkgdesc="A series of opaque Gnome-Shell themes by plaidcounty in different color flavours: blue, gray, green, orange, purple, pink and red." 
url="http://plaidcounty.deviantart.com/art/Prismas-Gnome-Shell-Theme-265934909"
license=('GPL')
arch=('any')
depends=('gnome-shell>=3.2')
optdepends=(
	    'gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
            'gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://www.deviantart.com/download/265934909/prismas_by_plaidcounty-d4ebwot.zip")

md5sums=('74e2d23df18c15481fa13c923a1565b3')



build() {
  mkdir -p ${pkgdir}/usr/share/themes/
  ls ${srcdir}/*.tar.gz | while read FILE; do
     echo "Unpacking" `basename "$FILE"`
     tar -xzf "$FILE" -C ${pkgdir}/usr/share/themes;
  done;
}


