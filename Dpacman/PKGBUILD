    pkgrel=0
    pkgdesc="A Simple Frontend, Using Dialog, and Portuguese of Brazil, For Pacman, the Archlinux Package Manager"
    arch=('i686')
    url="http://zpacman.sourceforge.net/"
    depends=('bash' 'sudo' 'mc' 'dialog')
    license=('GPL')
    source=()
    md5sums=()

    build() {
  	mkdir -p $startdir/pkg/usr/bin
  	install -D -m 755 $startdir/dpacman $startdir/pkg/usr/bin/
    }

