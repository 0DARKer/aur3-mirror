# Maintainer: Karol "Kenji Takahashi" Wo≈∫niak <kenji.sx>

pkgname=copyq
_realname=CopyQ
pkgver=1.5.0
pkgrel=1
pkgdesc="Clipboard manager with searchable and editable history."
url="https://github.com/hluk/CopyQ"
depends=('qt')
optdepends=()
makedepends=('cmake')
license=('GPL3')
arch=('i686' 'x86_64')
provides=('copyq')
source=("https://github.com/hluk/$_realname/archive/v${pkgver}.tar.gz")
md5sums=('4617ead70c824bc34954d74a9f8b7998')

build() {
    mkdir $srcdir/build
    cd $srcdir/build
    cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr $srcdir/$_realname-$pkgver
}

package() {
    cd $srcdir/build

    make DESTDIR="$pkgdir" install

    rm -rf $srcdir/build
}

