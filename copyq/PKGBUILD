pkgname=copyq
_realname=CopyQ
pkgver=1.6.1
pkgrel=1
pkgdesc="Clipboard manager with searchable and editable history."
url="https://github.com/hluk/CopyQ"
depends=('qt' 'qtwebkit')
optdepends=()
makedepends=('cmake')
license=('GPL3')
arch=('i686' 'x86_64')
provides=('copyq')
source=("https://github.com/hluk/$_realname/archive/v${pkgver}.tar.gz")
md5sums=('c58b0a87c5744b07b6a254f736f462f9')

build() {
    mkdir $srcdir/build
    cd $srcdir/build
    cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr $srcdir/$_realname-$pkgver
    make
}

package() {
    cd $srcdir/build
    make DESTDIR="$pkgdir" install
    rm -rf $srcdir/build
}

