# Maintainer: Karol "Kenji Takahashi" Wozniak <wozniakk@gmail.com>

pkgname=copyq
pkgver=1.0.2
pkgrel=1
pkgdesc="CopyQ is clipboard manager with searchable and editable history."
url="https://github.com/hluk/CopyQ"
depends=('qt')
optdepends=()
makedepends=('cmake')
license=('GPL3')
arch=('i686' 'x86_64')
source=('https://github.com/downloads/hluk/CopyQ/copyq-1.0.2.tar.gz')
md5sums=('bd14d6f737d95de55ee9a9a67cf4e38f')
provides=('copyq')

build() {
    mkdir ${srcdir}/build
    cd ${srcdir}/build
    cmake ${srcdir}/${pkgname}-${pkgver}
    make
    make DESTDIR="$pkgdir" install

    rm -rf ${srcdir}/build
}

