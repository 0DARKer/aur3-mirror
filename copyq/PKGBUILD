# Maintainer: Karol "Kenji Takahashi" Wozniak <wozniakk@gmail.com>

pkgname=copyq
_realname=CopyQ
pkgver=1.4.0
pkgrel=1
pkgdesc="CopyQ is clipboard manager with searchable and editable history."
url="https://github.com/hluk/CopyQ"
depends=('qt')
optdepends=()
makedepends=('cmake')
license=('GPL3')
arch=('i686' 'x86_64')
provides=('copyq')
source=("https://github.com/hluk/$_realname/archive/v${pkgver}.tar.gz")
md5sums=('0ddd874b4be0ea3a6d6136407a623edf')

build() {
    mkdir $srcdir/build
    cd $srcdir/build
    cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr $srcdir/$_realname-$pkgver
    
    make DESTDIR="$pkgdir" install

    rm -rf $srcdir/build
}

