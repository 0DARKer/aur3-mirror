# Maintainer: Karol "Kenji Takahashi" Wozniak <wozniakk@gmail.com>

pkgname=copyq
pkgver=1.0.1
pkgrel=1
pkgdesc="CopyQ is clipboard manager with searchable and editable history."
url="https://github.com/hluk/CopyQ"
depends=('qt')
optdepends=()
makedepends=('cmake')
license=('GPL3')
arch=('i686' 'x86_64')
source=('http://qt-apps.org/CONTENT/content-files/147452-copyq-1.0.1.zip')
md5sums=('09be2c5c22a5bfca82b9cd1e210abeae')
provides=('copyq')

build() {
    mkdir ${srcdir}/build
    cd ${srcdir}/build
    cmake ${srcdir}/${pkgname}-${pkgver}
    make
    make DESTDIR="$pkgdir" install

    rm -rf ${srcdir}/build
}

