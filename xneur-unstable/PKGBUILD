# Contributor: Stas Solovey <whats_up@tut.by>
#
pkgname=xneur-unstable
pkgver=0.16.0+hg1153
pkgrel=2
pkgdesc="X Neural Switcher is a text analyser, it detects the language of input and corrects it if needed"
url="http://www.xneur.ru"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gstreamer0.10' 'enchant' 'hunspell-en' 'hunspell-ru' 'libnotify' 'gtk2' 'hicolor-icon-theme')
optdepends=('aspell-en: English dictionary for aspell'
'aspell-ru: Russian dictionary for aspell')
conflicts=('xneur')
install=${pkgname}.install
source=("https://launchpad.net/~andrew-crew-kuznetsov/+archive/xneur-unstable/+files/xneur_0.16.0%2Bhg1153.orig.tar.gz")
md5sums=('3150917bd5a7cf8f7ad3d02a30bb7dbd')

build() {
	cd $srcdir/xneur-0.16.0

	./configure --prefix=/usr --sysconfdir=/etc \
   	--without-xosd \
    --with-gtk=gtk2
	make
}

package() {
	cd $srcdir/xneur-0.16.0
    make DESTDIR=$pkgdir install
}
