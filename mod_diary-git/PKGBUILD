# Maintainer: Daichi Shinozaki <dsdseg@gmail.com>

pkgname=mod_diary-git
pkgver=20120414
pkgrel=1
pkgdesc="simple blog system for Apache HTTPD Server"
license=('APACHE')
arch=('i686' 'x86_64')
url="https://github.com/hamano/apache-mod-diary"
depends=('apache' 'apr' 'discount' 'clearsilver')
makedepends=('git')
source=('Makefile' 'modules.mk')
provides=('mod_diary' 'mod_diary-git')
sha256sums=('72c002a6e3a34bff0c1547bd8f3e7f07b4e12350815b3d4bc0a64236527ca471'
            'b1016d5003bfb28184099f9e391886d4080a8db62a64c7e03edddd2ab09161a4')

_gitroot=https://github.com/hamano/apache-mod-diary.git
_gitname=apache-mod-diary

build() {
  _my_src_dir="$srcdir"/apache-mod-diary
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cp Makefile modules.mk "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
  touch .deps
  make top_dir=/usr/lib/httpd
}

package() {
  cd "$srcdir"/apache-mod-diary
  install -d "$pkgdir"/usr/lib/httpd/modules "$pkgdir"/usr/bin
  make top_dir=/usr/lib/httpd DESTDIR="$pkgdir" install
  install diary-mkindex "$pkgdir"/usr/bin
}

# vim:set ts=2 sw=2 et:
