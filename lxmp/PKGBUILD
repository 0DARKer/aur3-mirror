pkgname=lxmp
pkgver=0.6.1
pkgrel=1
pkgdesc="A mod (tracker) music player for Linux."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/lxmp/"
license=('GPLv3')
depends=('gtkmm3' 'libbass')
makedepends=('p7zip')
source=("http://downloads.sourceforge.net/project/lxmp/lxmp/lxmp-0.6.1.7z")
md5sums=('5a15b18fc4dada6d7cffad927e33dabe')

build() {
    cd "$srcdir/"
    make || return 1
}

package() {
	install -Dm755 lxmp "$pkgdir/usr/bin/lxmp" || return 1
}
