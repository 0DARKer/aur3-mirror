#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-b-c'
_pkgname='B-C'
pkgver='1.29'
pkgrel='1'
pkgdesc="Perl compiler's C backend"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-ipc-run' 'perl-opcodes')
url='http://search.cpan.org/dist/B-C/'
source=(http://search.cpan.org/CPAN/authors/id/R/RU/RURBAN/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('b7969e92740647b74a011718cafd28f051ca05db1296c682ce610ac5f86ccfd2')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  [ "$skiptest" = "1" ] || make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
