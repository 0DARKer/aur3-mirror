# Maintainer: speps <speps at aur dot archlinux dot org>

pkgname=blink
pkgver=0.3.1
pkgrel=1
pkgdesc="A state of the art easy to use Qt SIP client"
arch=('any')
url="http://www.icanblink.com"
license=('custom:MIT')
depends=('python2-cjson' 'python2-pyqt' 'python2-sipsimple')
source=("http://download.ag-projects.com/BlinkQt/$pkgname-$pkgver.tar.gz")
md5sums=('04b2ef037063fc4538c8313cd1048f38')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/"

  # license
  install -Dm644 doc/license.txt \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
