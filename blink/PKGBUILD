# Maintainer: Ingo Gottwald <in dot gottwald at gmail dot com>
# Contributor: speps <speps at aur dot archlinux dot org>

pkgname=blink
pkgver=0.9.1
pkgrel=1
pkgdesc="A state of the art easy to use Qt SIP client"
arch=('any')
url="http://www.icanblink.com"
license=('custom:MIT')
depends=('python2-cjson' 'python2-pyqt' 'python2-sipsimple' 'libvncserver')
source=("http://download.ag-projects.com/BlinkQt/$pkgname-$pkgver.tar.gz")
sha256sums=('f578e5186893c3488e7773fbb775028ae54540433a0c51aefa5af983ca2bfdae')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/"

  # license
  install -Dm644 doc/license.txt \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
