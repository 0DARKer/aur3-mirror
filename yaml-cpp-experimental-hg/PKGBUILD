# Maintainer: Daniel Kirchner <ekpyron@lavabit.com>
pkgname=yaml-cpp-experimental-hg
pkgver=405
pkgrel=1
pkgdesc="YAML parser and emitter in C++, written around the YAML 1.2 spec, experimental API"
url="http://code.google.com/p/yaml-cpp/"
arch=('i686' 'x86_64')
license=('MIT')
makedepends=('cmake' 'mercurial')
conflicts=('yaml-cpp')
_hgroot="https://code.google.com/p"
_hgrepo="yaml-cpp"

build() {
	cd "$srcdir"
	msg "Connecting to Mercurial server..."

	if [ -d $_hgrepo ] ; then
		cd $_hgrepo
		hg pull -u || return 1
		msg "The local files are updated."
	else
		msg "Cloning into $_hgroot/$_hgrepo..."
		hg clone $_hgroot/$_hgrepo || return 1
	fi

	msg "Mercurial checkout done or server timeout"
	msg "Starting make..."

	rm -rf "$srcdir/$_hgrepo-build"
	mkdir "$srcdir/$_hgrepo-build"
	cd "$srcdir/$_hgrepo-build"
	
	cmake ../$_hgrepo -DCMAKE_INSTALL_PREFIX=/usr -DYAML_CPP_BUILD_OLD_API=OFF
	make
}

package() {
	cd "$srcdir/$_hgrepo-build"
	make DESTDIR=$pkgdir install
}
