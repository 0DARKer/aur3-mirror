# Contributor: Lucas Hermann Negri <kkndrox@gmail.org>

pkgname=lfann
pkgver=1.1.0
pkgrel=1
pkgdesc="FANN bindings to Lua" 
arch=(i686 x86_64)
url="http://oproj.tuxfamily.org" 
depends=('fann>=2.2' 'lua51') 
makedepends=('gcc')
license=(LGPL)
source=(http://download.tuxfamily.org/oproj/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('d37856182acf380a6507ec81a49171eb')

build() { 
    cd $startdir/src/$pkgname-$pkgver
    
    if [ $arch = 'x86_64' ]; then
        make AMD64=1 || 1
    else
        make || 1
    fi

    make install DESTDIR=$startdir/pkg/usr || 1
}
