#Maintainer: emanuele < newdna1510 at yahoo dot it>

pkgname=telepathy-kopete-protocol
pkgver=1157209
pkgrel=1
pkgdesc="Telepathy protocol for Kopete"
arch=('i686' 'x86_64')
url="http://telepathy.freedesktop.org/"
license=('GPL')
depends=('qt' 'kdenetwork-kopete')
makedepends=('subversion' 'cmake' 'telepathy-qt4' 'telepathy-accounts-kcm' 'telepathy-accounts-kcm-plugins' 'telepathy-gabble')
source=()
md5sums=()
#groups=(kde4-svn)

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/playground/network/kopete
_svnmod=telepathy-kopete-protocol

build() {
 

  # start building
  cd $startdir/src

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build

  cmake $startdir/src/$_svnmod -DCMAKE_INSTALL_PREFIX=/usr #-DCMAKE_BUILD_TYPE=debugfull

  make VERBOSE=1 || return 1
  make DESTDIR=$startdir/pkg install || return 1

}
