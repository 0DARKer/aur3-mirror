# Maintainer: Emmanuel GRAS <gras.emmanuel@gmail.com>

pkgname=ropgadget
_pkgname=ROPgadget

pkgver=2.2
pkgrel=1
pkgdesc="A tool to search for gadgets in binary files"
arch=('i686')
url="http://www.shell-storm.org/project/ROPgadget/"
license=('GPL')
provides=(ropgadget)
source=(http://www.shell-storm.org/project/ROPgadget/files/$_pkgname-v$pkgver.tar.gz)
md5sums=('df7318bd899a4ed9a704b9991b2286c8')

build() {
  cd "$srcdir/$_pkgname-v$pkgver"
  make
}

package() {
  cd "$srcdir/$_pkgname-v$pkgver"
  install -D -m 755 $_pkgname $pkgdir/usr/bin/$pkgname
}

# vim:set ts=2 sw=2 et:
