[Unit]
Description=Pump.io Social Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/usr/share/webapps/pump.io
User=pump
Group=pump
ExecStart=/usr/bin/node ./bin/pump -c /etc/webapps/pump.io/pump.io.json start
ExecStop=/usr/bin/node ./bin/pump -c /etc/webapps/pump.io/pump.io.json stop
Restart=always
SyslogIdentifier=pump.io

[Install]
WantedBy=multi-user.target
