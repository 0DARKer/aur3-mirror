# Maintainer: Bartlomiej Piotrowski <nospam@bpiotrowski.pl>

pkgname=pkgconf
pkgver=0.9.1
pkgrel=1
pkgdesc='pkg-config compatible utility which does not depend on glib'
url='https://github.com/nenolod/pkgconf'
arch=('i686' 'x86_64')
license=('ISC')
makedepends=('popt')
conflicts=('pkg-config')
provides=('pkg-config')
source=(http://rabbit.dereferenced.org/~nenolod/distfiles/$pkgname-$pkgver.tar.bz2)
sha256sums=('8fafb60fab89b8f8c5407370bbb6b00ab70778d9f6336f388a37803a9907f936')

build() {                                                                       
    cd "$srcdir"/$pkgname-$pkgver
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --mandir=/usr/share/man \
        --infodir=/usr/share/info \
        --localstatedir=/var
    make
}

package() {
    cd "$srcdir"/$pkgname-$pkgver
    make DESTDIR="$pkgdir" install
    ln -s /usr/bin/pkgconf "$pkgdir"/usr/bin/pkg-config
}
