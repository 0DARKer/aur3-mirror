# Maintainer: fsckd <fsckdaemon -at- gmail.com>

pkgname=xcursor-protozoa
pkgver=1
pkgrel=1
pkgdesc="Protozoa X11 cursor theme"
arch=('i686' 'x86_64')
url="http://xfce-look.org/content/show.php/Protozoa?content=105586"
license=('GPL')
depends=('libxcursor')
source=("http://d3.myfreefilehosting.com/d2/PROTOZOA.tar.gz"
        "http://d3.myfreefilehosting.com/d1/PROTOZOA-grey.tar.gz"
        "http://d3.myfreefilehosting.com/d1/PROTOZOA-red.tar.gz"
       )
sha256sums=('08209660c16ee2b1854ec24638cbc5fcdcb07c89c4396666f776ecbc97efd69e'
            '81d675c6ca340c7b236a1cff4d7b2642ac4d7d4cd6525cbe0d0fa98d747d8afb'
            '6e8dc1880c6fa1ab68661c7fb703b9120f632c3b874468a9b6787ad1b6f90972'
           )

build() {
   local t d
   for t in '' '-grey' '-red' ; do
      install -d -m755 "$pkgdir/usr/share/icons/Protozoa$t"
      cd "$srcdir/PROTOZOA$t"
      d="$pkgdir/usr/share/icons/Protozoa$t"
      cp -rp {cursors,index.theme} "$d"
      find "$d" -type f -exec chmod 644 '{}' +
      find "$d" -type d -exec chmod 755 '{}' +
   done
}
