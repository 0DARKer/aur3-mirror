# Maintainer: Lari Tikkanen <lartza@wippies.com>
pkgname=warzone2100-git
pkgver=20110516
pkgrel=1
pkgdesc="3D realtime strategy game on a future Earth (Git version)"
arch=('i686' 'x86_64')
url="http://wz2100.net/"
license=('GPL')
depends=('openal' 'gettext' 'ttf-dejavu' 'physfs' 'qt' 'glew' 'libvorbis' 'libtheora')
makedepends=('openal' 'gettext' 'ttf-dejavu' 'physfs' 'qt' 'glew' 'libvorbis' 'libtheora' 'git')
provides=('warzone' 'warzone2100' 'warzone-svn' 'warzone2100-beta')
conflicts=('warzone2100')

_gitroot="git://github.com/Warzone2100/warzone2100.git"
_gitname="warzone2100"

build() {
  cd $srcdir

  if [[ -d $srcdir/$_gitname ]] ; then
	cd $_gitname
	git pull origin
  else
	git clone $_gitroot $_gitname
  fi

  cd $srcdir/$_gitname

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd $srcdir/$_gitname

  make DESTDIR=$pkgdir install
}
