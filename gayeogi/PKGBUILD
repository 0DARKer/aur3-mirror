pkgname=gayeogi
pkgver=0.6
pkgrel=2
pkgdesc="A fully-featured music management suite."
arch=(any)
url="https://github.com/KenjiTakahashi/gayeogi"
license=('GPL3')
depends=(
    'python2'
    'python2-pyqt'
    'mutagen'
    )
makedepends=('python2-distribute')
optdepends=(
    'phonon: Player'
    'python2-pylast: Last.FM/Libre.FM scrobbling'
    'lxml: metal-archives.com/musicbrainz.org'
    )
provides=('gayeogi')
conflicts=()
replaces=('fetcher')
backup=()
options=(!emptydirs)
source=("https://github.com/KenjiTakahashi/gayeogi/tarball/$pkgver")
noextract=()
md5sums=('cdfae6981ac42e758b6f090927be5076')
build() {
    cd $srcdir/KenjiTakahashi-gayeogi-03a70d3
    python2 setup.py install --root=$pkgdir/ --optimize=1
}

