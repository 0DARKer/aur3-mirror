# Maintainer: Karol "Kenji Takahashi" Wozniak <wozniakk@gmail.com>

pkgname=gayeogi
pkgver=0.6.2
pkgrel=2
pkgdesc="A fully-featured music management suite."
arch=(any)
url="https://github.com/KenjiTakahashi/gayeogi"
license=('GPL3')
depends=(
    'python2'
    'python2-pyqt'
    'mutagen'
    )
makedepends=('python2-distribute')
optdepends=(
    'phonon: Player'
    'python2-pylast: Last.FM/Libre.FM scrobbling'
    'lxml: metal-archives.com/musicbrainz.org'
    )
provides=('gayeogi')
conflicts=()
replaces=('fetcher')
backup=()
options=(!emptydirs)
source=(
    "http://pypi.python.org/packages/source/g/$pkgname/$pkgname-$pkgver.tar.gz"
    "gayeogi.desktop"
)
noextract=()
md5sums=('a2e49ff345de40ecfbcee15e3e4b4ffd'
         'aaa5efacbae7fe4e7fce610d03d35c15')
build() {
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py install --root=$pkgdir/ --optimize=1
    install -d -m 755 $pkgdir/usr/share/applications
}
package() {
    install -m 644 $startdir/gayeogi.desktop $pkgdir/usr/share/applications
}

