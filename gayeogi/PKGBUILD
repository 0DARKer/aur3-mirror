pkgname=gayeogi
pkgver=0.6.1
pkgrel=1
pkgdesc="A fully-featured music management suite."
arch=(any)
url="https://github.com/KenjiTakahashi/gayeogi"
license=('GPL3')
depends=(
    'python2'
    'python2-pyqt'
    'mutagen'
    )
makedepends=('python2-distribute')
optdepends=(
    'phonon: Player'
    'python2-pylast: Last.FM/Libre.FM scrobbling'
    'lxml: metal-archives.com/musicbrainz.org'
    )
provides=('gayeogi')
conflicts=()
replaces=('fetcher')
backup=()
options=(!emptydirs)
source=("http://pypi.python.org/packages/source/g/$pkgname/$pkgname-$pkgver.tar.gz#md5=ff3e17d24f3dd198d34923d59ae66f9b")
noextract=()
md5sums=('ff3e17d24f3dd198d34923d59ae66f9b')
build() {
    cd $srcdir/$pkgname-$pkgver
    python2 setup.py install --root=$pkgdir/ --optimize=1
}

