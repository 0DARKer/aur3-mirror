# Maintainer: Felix E. xelif@icqmail.com
pkgname=mediawiki-ext-usermerge-git
pkgver=r638.f1d6d58
pkgrel=1
pkgdesc="Extension UserMerge for MediaWiki for merging and deleting users."
source=("git+https://git.wikimedia.org/git/mediawiki/extensions/UserMerge.git")
md5sums=('SKIP')
arch=('any')
url="http://www.mediawiki.org/wiki/Extension:UserMerge"
license=('GPL')
depends=('mediawiki')
makedepends=('git')
conflicts=()

# Variable storing the mediawiki extension name.
_extname="UserMerge"

pkgver() {
  cd $_extname
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  _extdir="$pkgdir/usr/share/webapps/mediawiki/extensions"
  mkdir -p "$_extdir"
  rsync -a $_extname "$_extdir/" --exclude .git
}