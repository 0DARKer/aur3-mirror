# Maintainer: Leonardo Miliani <leonardo at leonardomiliani.com>
pkgname=realstudio
pkgver=2010r1
pkgrel=3
pkgdesc="A RAD environment based on BASIC that compiles native applications for Windows, Mac and Linux."
arch=('i686')
url="http://www.realsoftware.com"
license=('custom')
depends=('gtk2')
optdepends=('cups')
install=${pkgname}.install
source=(http://realsoftware.cachefly.net/REALStudio${pkgver}/REALStudio${pkgver}.tgz realstudio.desktop)
md5sums=('dfad4a33d46a0493f6a73864bdba079b'
         'e51ad6593c387d991c29a2059b1053c7')

build() {
	
  chmod 755 -R ${srcdir}/REALStudio${pkgver} || return 1

  mkdir -p ${pkgdir}/opt/RealStudio-${pkgver} || return 1
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname} || return 1
  mv ${srcdir}/REALStudio${pkgver}/* ${pkgdir}/opt/RealStudio-${pkgver} || return 1

  install -D -m644 ${pkgdir}/opt/RealStudio-${pkgver}/realstudio.xpm ${pkgdir}/usr/share/pixmaps/realstudio.xpm || return 1
  install -D -m644 "${pkgdir}/opt/RealStudio-${pkgver}/Documentation/Read Me/License Agreement.txt" ${pkgdir}/usr/share/licenses/${pkgname}/ || return 1
  install -D -m644 ${srcdir}/realstudio.desktop ${pkgdir}/usr/share/applications/realstudio.desktop || return 1

  mkdir -p ${pkgdir}/usr/bin || return 1
  ln -sf "/opt/RealStudio-${pkgver}/REAL Studio 2010" ${pkgdir}/usr/bin/realstudio || return 1
}
