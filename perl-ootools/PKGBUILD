# Maintainer: xduugu
pkgname=perl-ootools
pkgver=2.21
pkgrel=1
pkgdesc="Pragmas to implement constructors and accessors"
arch=('any')
url="http://search.cpan.org/dist/OOTools/"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/D/DO/DOMIZIO/OOTools-$pkgver.tar.gz) 
md5sums=('41b50eeccc13f23bc7e91c0f5c333c88')

build() {
  cd  "$srcdir/OOTools-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR="$pkgdir" || return 1

  find "$pkgdir" -name '.packlist' -delete
  find "$pkgdir" -name '*.pod' -delete
}
