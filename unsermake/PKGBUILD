# Adopted by: Lesergi <lesergi@gmail.com>

pkgname=unsermake
pkgver=20070824
pkgrel=3
pkgdesc="A replacement for automake"
arch=('i686' 'x86_64')
url="http://wiki.kde.org/tiki-index.php?page=unsermake"
license=('GPL')
makedepends=('patch')
depends=('python>=2.6')
source=(http://ranger.befunk.com/fink/unsermake/$pkgname-$pkgver.tar.bz2 unsermake-python26.patch)

build() {
  cd ${startdir}/src/$pkgname/
  patch -Np1 -i ../unsermake-python26.patch || return 1
  install -D -m755 unsermake ${startdir}/pkg/usr/bin/unsermake

  mkdir -p ${startdir}/pkg/usr/lib/python2.6/site-packages/unsermake
  install -m644 *.py *.um ${startdir}/pkg/usr/lib/python2.6/site-packages/unsermake/
}
md5sums=('b794f83bdc3f6205d1fd731da4e96d89'
         'ebe11a60211cbf39fa244aabbb0c5434')
