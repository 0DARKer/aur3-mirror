# Contributor: Flareguner <flareguner@gmail.com>

pkgname=qgoogletranslator
pkgver=1.2.0
pkgrel=1
pkgdesc="A translator written on qt using different online services(such as google-translate)"
arch=('i686' 'x86_64')
url="http://qgt.googlecode.com"
license=('GPL3')
depends=('qjson' 'libqxt' 'qt>=4.6')
makedepends=('cmake')
source=(http://qgt.googlecode.com/files/$pkgname-${pkgver}.tar.bz2)
sha256sums=('8d33ef53dfc703a079ed9d89c5538ef4ac5004d97a300a9804359190e5cad543')

build() {
	cd $srcdir/$pkgname-$pkgver
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX=/usr
}

package() {
	cd $srcdir/$pkgname-$pkgver/build
	make DESTDIR=$pkgdir install
}
