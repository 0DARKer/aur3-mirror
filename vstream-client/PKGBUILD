# Contributor: Andrew Mellor
pkgname=vstream-client
pkgver=1.2
pkgrel=1
pkgdesc="A fork off of the vstream library from the tivo-mplayer project."
arch=('i686' 'x86_64')
license=('GPL')
url="http://armory.nicewarrior.org/projects/vstream-client/"
depends=()
makedepends=()
source=("http://download.nicewarrior.org/vstream-client/vstream-client-1.2.tar.gz")
md5sums=('91088dad9234dd1176ddb84e6fbee69c')

build() {
    cd ${srcdir}/vstream-client-${pkgver}
    ./configure --prefix=${pkgdir}/usr
    make vstream-client
    make INSTALL='install -D' install
}
