# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=hunspell-it-it
pkgver=2.4
pkgrel=1
pkgdesc="An italian dictionary for Hunspell"
arch=('any')
url="http://linguistico.sourceforge.net/pages/dizionario_italiano.html"
license=('GPL')
depends=('hunspell')
conflicts=('hunspell-it')
source=(http://prdownloads.sf.net/linguistico/italiano_2_4_2007_09_01.zip?download)
md5sums=('e7fbd9e2dfb25ea3288cdb918e1e1260')

build() {
  cd "$srcdir"

  # Fix dic file empty lines
  sed '/^\/$/d' -i it_IT.dic

  mkdir -p "$pkgdir/usr/share/myspell/dicts"
  install -Dm644 it_IT.* "$pkgdir/usr/share/myspell/dicts"

  ln -s dicts/it_IT.aff "$pkgdir/usr/share/myspell/it_IT.aff"
  ln -s dicts/it_IT.dic "$pkgdir/usr/share/myspell/it_IT.dic"
}
