# Contributor: Alabin Artem <kirpicheff@yandex.ru>
pkgname=urbackup-server
pkgver=0.26.1.3
pkgrel=1
pkgdesc="Client Server backup system"
arch=("i686" "x86_64")
url="http://www.urbackup.org/"
license=("GPL")
depends=()
makedepends=()
replaces=()
source=("http://urpc.dyndns.org/urbackup_unstable/urbackup-server-0.26.1.3-gc.tar.gz"
	'rc.urbackup' 
	'patch.diff')
md5sums=('93f27518e635335bb08d54a06ecd5002'
	 '5957b67ac41a1f87098faa71f33a4f1e'
	 '399f0b1b7b2c91bfd0c2a3d541683037')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	patch < ../makefile.diff

	grep urbackup /etc/passwd >/dev/null
	if [ $? -ne 0 ]
	then
	useradd -m -s /bin/bash urbackup || return 1
	exit 1
	fi


	make DESTDIR=$pkgdir install
install -Dm755 ../rc.urbackup $startdir/pkg/etc/rc.d/urbackup
}
# vim: ts=2
