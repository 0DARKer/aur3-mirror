# Contributor: Artem Alabin <kirpicheff@yandex.ru>
pkgname=urbackup-server
pkgver=1.2.2.216
pkgrel=1
pkgdesc="Client Server backup system"
arch=("i686" "x86_64")
url="http://www.urbackup.org/"
license=("GPL")
depends=(gcc make crypto++)
source=('http://downloads.sourceforge.net/project/urbackup/Server/1.2.2/urbackup-server-1.2.2.tar.gz'
	'urbackup-server.service')
md5sums=('a37cfa719f61a0b88823971d5e8e5f76'
	 'ad13f1eec5e1ea114f7e27ca19b9e293')

build() {
	ln -sf /usr/include/cryptopp /usr/include/crypto++
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	temp=/tmp/tempfile
	sed 's/adduser/#adduser/g' $startdir/src/$pkgname-$pkgver/Makefile > $temp
	mv $temp $startdir/src/$pkgname-$pkgver/Makefile
	if id -u urbackup >/dev/null 2>&1; then
        	echo "user exists"
	else
        	useradd -m -s /bin/bash urbackup
	fi

	make || return 1

	make DESTDIR=$pkgdir install

install -Dm755 ../urbackup-server.service $startdir/pkg/etc/systemd/system/urbackup-server.service
}
# vim: ts=2
