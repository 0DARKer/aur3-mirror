# Contributor: Alabin Artem <kirpicheff@yandex.ru>
pkgname=urbackup-server
pkgver=0.26.1.3
pkgrel=3
pkgdesc="Client Server backup system"
arch=("i686" "x86_64")
url="http://www.urbackup.org/"
license=("GPL")
depends=()
makedepends=(patch gcc make)
replaces=()
source=("http://urpc.dyndns.org/urbackup_unstable/urbackup-server-0.26.1.3-gc.tar.gz"
	'rc.urbackup')
md5sums=('93f27518e635335bb08d54a06ecd5002'
	 '39245897c69168303919ddd0f0175c1e')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr

	temp=/tmp/tempfile
	sed 's/adduser/#adduser/g' $startdir/src/$pkgname-$pkgver/Makefile > $temp
	mv $temp $startdir/src/$pkgname-$pkgver/Makefile

	make || return 1

	grep urbackup /etc/passwd >/dev/null
	if [ $? -ne 0 ]
	then
	useradd -m -s /bin/bash urbackup || return 1
	fi


	make DESTDIR=$pkgdir install
install -Dm755 ../rc.urbackup $startdir/pkg/etc/rc.d/urbackup-server
}
# vim: ts=2
