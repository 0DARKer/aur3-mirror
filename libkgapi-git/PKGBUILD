pkgname=libkgapi-git
_gitname=libkgapi
pkgver=v0.4.4.88.g3d54b82
pkgrel=1
pkgdesc='A KDE-based library for accessing various Google services via their public API'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('kdepimlibs' 'qjson')
makedepends=('cmake' 'git' 'automoc4' 'boost')
conflicts=('libkgapi')
provides=('libkgapi')
groups=('kde-git')
source=('git://anongit.kde.org/libkgapi')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $srcdir
  
  msg "GIT checkout done"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi
  mkdir $srcdir/build
  cd $srcdir/build
  cmake $srcdir/$_gitname -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
