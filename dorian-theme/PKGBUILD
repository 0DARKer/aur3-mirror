pkgname=dorian-theme
pkgver=02192013
pkgrel=1
pkgdesc="Darkly Elegant"
arch=('any')
url="http://fav.me/d5uhf1v"
license=('GPLv3')
depends=('gtk-engines' 'gnome-themes-standard>=3.6.0' 'gtk-engine-murrine>=0.98.2')
source=("${pkgname}-${pkgver}.zip::http://www.deviantart.com/download/353532019/dorian_theme_by_killhellokitty-d5uhf1v.zip")
md5sums=('d595c1a89a8e44d9d5225395063d9c7f')


package() {
  # install themes
  find dorian-theme/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}

