# Maintainer:  Alf <naihe2010@126.com>

pkgname=fdupves-git
pkgver=20121113
pkgrel=1
pkgdesc="Find duplicate video files"
arch=('any')
url="http://github.com/naihe2010/fdupves"
license=('GPL')
depends=('mplayer' 'perl' 'perl-wx')
makedepends=('git')

_gitroot=http://github.com/naihe2010/fdupves.git
_gitname=fdupves

build() {
  cd "$srcdir"

  if [[ -d $_gitname ]]; then
    cd $_gitname && git pull origin && cd ..
  else
    git clone $_gitroot
  fi

  rm -rf $_gitname-build
  git clone $_gitname $_gitname-build
  mkdir -p $pkgdir/usr/bin
  cd "$srcdir/$_gitname-build"
  install -m 0755 fdupves $pkgdir/usr/bin
}

package() {
  mkdir -p $pkgdir/usr/bin
  cd "$srcdir/$_gitname-build"
  install -m 0755 fdupves $pkgdir/usr/bin
}
