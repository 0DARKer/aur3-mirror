pkgname=mp3gain-foo
pkgver=1.5.2.1
pkgrel=1
pkgdesc="mp3gain modified to support id3v2 tags like foobar (replaygain_track_*)"
arch=('i686' 'x86_64')
url="http://mp3gain.sourceforge.net/"
license=('LGPL' 'MPL')
depends=('taglib>=1.6')
conflicts=('mp3gain')
provides=('mp3gain')
source=("mp3gain-foo.tar.xz")
md5sums=('4170ebc16355cbf09a6ee19ee467a8ee')

build() {
  cd $srcdir/$pkgname
  make
  mkdir -p "${pkgdir}/usr/bin"
  make INSTALL_PATH="${pkgdir}/usr/bin" install
}
