pkgname=kokua-bin
pkgver=3.3.3beta1b
_realpkgver=3.3.3-Beta_1b
_pngver=1.5.1
pkgrel=1
pkgdesc="An Open Source third party viewer for Second LifeÂ® (secondlife) and OpenSim (opensimulator) grids -- ALPHA!"
url="http://www.kokuaviewer.org"
license=('GPL')
install=kokua.install
arch=('i686' 'x86_64')



if [ "$CARCH" = "i686" ]; then
	depends=('apr-util' 'freealut' 'gtk2' 'libgl' 'libidn' 'libjpeg7' 'mesa' 'nss' 'sdl')
	optdepends=('libpulse: for PulseAudio support' 'alsa-lib: for ALSA support' 'nvidia-utils: for NVIDIA support')
	source=("http://bitbucket.org/NickyP/kokua-gm/downloads/Kokua-${_realpkgver}-Linux32.tar.bz2" \
	"http://downloads.sourceforge.net/sourceforge/libpng/libpng-${_pngver}.tar.xz" \
	'kokua.desktop' \
	'kokua.launcher' \
	'donotregister.patch')
	sha256sums=('18aa1f3934f0a314abf872d376f873c728e753f4b9e82241bdfd08b13707c89c'
	'd230837ad959b395bf7e2937e0136e6037208a29cda83000bf8b88a3692e8c69'
	'c1b40306a0326b10bbb7098c8f88c8d143b36bab8acdfd02b13296cf092bc0f9'
	'63869e931659f9483df7dbe63495b8f6051c7ef914e4caaee31b8fae3b528bc6'
	'91fc670961fa17fd57db3011e431d253b669f3de7fe04d389518b4bd4c254ba0 ')

elif [ "$CARCH" = "x86_64" ]; then
	depends=('apr-util' 'freealut' 'gtk2' 'libgl' 'lib32-libidn' 'libjpeg7' 'mesa' 'nss' 'sdl' 'lib32-freealut' 'lib32-util-linux' 'lib32-zlib')
	optdepends=('lib32-libpulse: for PulseAudio support'
				'lib32-alsa-lib: for ALSA support'
				'lib32-nvidia-utils: for NVIDIA support')
	source=("http://bitbucket.org/NickyP/kokua-gm/downloads/Kokua-${_realpkgver}-Linux64.tar.bz2" \
	"http://downloads.sourceforge.net/sourceforge/libpng/libpng-${_pngver}.tar.xz" \
	'kokua.desktop' \
	'kokua.launcher' \
	'donotregister.patch')
	sha256sums=('11b1df5e622f75c525d59e31c6ba0c40f32c9f849024caeae07c75da57df3a73'
	'd230837ad959b395bf7e2937e0136e6037208a29cda83000bf8b88a3692e8c69'
	'c1b40306a0326b10bbb7098c8f88c8d143b36bab8acdfd02b13296cf092bc0f9'
	'63869e931659f9483df7dbe63495b8f6051c7ef914e4caaee31b8fae3b528bc6'
	'91fc670961fa17fd57db3011e431d253b669f3de7fe04d389518b4bd4c254ba0')

fi



build(){
if [ "$CARCH" = "i686" ]; then
	export CC="gcc"
	export CXX="g++"
	export PKG_CONFIG_PATH="/usr/lib/pkgconfig"

elif [ "$CARCH" = "x86_64" ]; then
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

fi

cd "${srcdir}/libpng-${_pngver}"
./configure
make
}


package() {
  cd $srcdir
  
  # Rename Data Directory
  if [ "$CARCH" = "i686" ]; then
	mv Kokua-${_realpkgver}-Linux32 kokua-bin
elif [ "$CARCH" = "x86_64" ]; then
	mv Kokua-${_realpkgver}-Linux64 kokua-bin
fi

  # Do not register the application (saves from badly-installed desktop files and icons)
  patch kokua-bin/kokua donotregister.patch
  rm kokua-bin/etc/refresh_desktop_app_entry.sh


  # Install Desktop File
  install -D -m644 $srcdir/kokua.desktop \
    $pkgdir/usr/share/applications/kokua.desktop
  
  # Install Icon File
  install -D -m644 $srcdir/kokua-bin/kokua_icon.png \
    $pkgdir/usr/share/pixmaps/kokua-bin.png
  
  # Install Launcher
  install -D -m755 $srcdir/kokua.launcher \
    $pkgdir/usr/bin/kokua-bin

  # Move Data to Destination Directory
  install -d $pkgdir/opt
  mv kokua-bin $pkgdir/opt/

  # Install libpng we built

if [ "$CARCH" = "i686" ]; then
	install -D -m755 $srcdir/libpng-${_pngver}/.libs/libpng15.so.15.1.0 \
	$pkgdir/opt/kokua-bin/lib
	cd $pkgdir/opt/kokua-bin/lib
	ln -s libpng15.so.15.1.0 libpng15.so.15
	ln -s libpng15.so.15.1.0 libpng15.so

elif [ "$CARCH" = "x86_64" ]; then
	install -D -m755 $srcdir/libpng-${_pngver}/.libs/libpng15.so.15.1.0 \
	$pkgdir/opt/kokua-bin/lib32
	cd $pkgdir/opt/kokua-bin/lib32
	ln -s libpng15.so.15.1.0 libpng15.so.15
	ln -s libpng15.so.15.1.0 libpng15.so

fi
}
