# Contributor: Andeas W. Hauser <andy-aur@splashground.de>

pkgname=sgrep
pkgver=1.92a
pkgrel=1
pkgdesc="Structured GREP, for filtering based on structural criteria (for SGML,XML and HTML)"
arch=(i686 x86_64)
url="http://www.cs.helsinki.fi/u/jjaakkol/sgrep.html"
license=GPL
source=(ftp://ftp.cs.helsinki.fi/pub/Software/Local/Sgrep/sgrep-$pkgver.tar.gz)

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}

md5sums=('99eb1ed515648f653fc7be45e0896378')
