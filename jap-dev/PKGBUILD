# Contributor: Adam Hani Schakaki <krzd@krzd.net>

pkgname=jap-dev
pkgver=00.12.054
pkgrel=1
pkgdesc="Surfing the internet anonymously and unobservably (development version, can be installed beside jap stable)"
arch=('any')
url="http://anon.inf.tu-dresden.de/index_en.html"
license=('unknown')
source=('http://anon.inf.tu-dresden.de/develop/JAP.jar')
noextract=('JAP.jar')
md5sums=('a069cf5e67fdb94d7fb9a666fdbd5bc4')

build()
{
	cd ${startdir}/src/
	mkdir -p ${startdir}/pkg/opt/jap-dev/

	echo "[Desktop Entry]" >> ${startdir}/src/jap-dev.desktop
	echo "Categories=Application;Network;" >> ${startdir}/src/jap-dev.desktop
	echo "Comment=JAP makes it possible to surf the internet anonymously and unobservably (development version)." >> ${startdir}/src/jap-dev.desktop
	echo "Encoding=UTF-8" >> ${startdir}/src/jap-dev.desktop
	echo "Exec=java -jar /opt/jap-dev/JAP.jar" >> ${startdir}/src/jap-dev.desktop
	echo "GenericName=JAP (dev)" >> ${startdir}/src/jap-dev.desktop
	echo "Hidden=false" >> ${startdir}/src/jap-dev.desktop
	echo "Name=JAP (dev)" >> ${startdir}/src/jap-dev.desktop
	echo "Terminal=false" >> ${startdir}/src/jap-dev.desktop
	echo "Type=Application" >> ${startdir}/src/jap-dev.desktop

	install -m644 -D ${startdir}/JAP.jar ${startdir}/pkg/opt/jap-dev/JAP.jar
	install -m644 -D ${startdir}/src/jap-dev.desktop ${startdir}/pkg/usr/share/applications/jap-dev.desktop
}

