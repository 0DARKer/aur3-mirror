# Contributor: Adam Vogt <vogt.adam@gmail.com>
pkgname=freepv
pkgver=0.3.0
pkgrel=1
pkgdesc="A viewer for panoramas including a mozilla plugin"
arch=('i686' 'x86_64')
url="http://freepv.sourceforge.net/"
license=('LGPL')
depends=('freeglut' 'mesa' 'libjpeg' 'zlib' 'xulrunner')
makedepends=('cmake')
install=
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('8a77f721838d22accd86d40b1580c408')

build() {
  cd "$startdir/src/$pkgname-$pkgver"
  
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make DESTDIR="$startdir/pkg" install
}

# vim:set ts=2 sw=2 et:
