# Maintainer: Bartosz Chmura <chmurli at gmail dot com>

pkgname=victory-gtk-theme
_pkgname=Victory*
pkgver=2011.04.03
pkgrel=1
pkgdesc="Amazing minimalistic GNOME / XFCE theme"
arch=('any')
url="http://gnome-look.org/content/show.php/Victory+%28Strikes+Again%29?content=123936"
license=('GPL')
depends=('gtk-engine-murrine-git')
optdepends=('nautilus-elementary: the fork of Nautilus for simplicity [AUR]'
	'small-victory-gtk-theme: a new compact version of Victory with a Dark Panel [AUR]')
source=('http://gnome-look.org/CONTENT/content-files/123936-VictoryTheme%2020110403.tar.gz')
md5sums=('c05d5c864874b8fac82b10d44e5f8639')

build () {
	install -d -m 755 ${pkgdir}/usr/share/themes || return 1	
	chmod -R 755 $srcdir/Victory* || return 1
	cp -R $srcdir/${_pkgname} ${pkgdir}/usr/share/themes || return 1	
}
