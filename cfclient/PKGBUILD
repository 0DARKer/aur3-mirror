pkgname=cfclient
pkgver=2013.4.1
pkgrel=1
pkgdesc="Crazyflie quadcopter Python client and libraries"
arch=('any')
url="http://www.bitcraze.se/"
license=('GPL')
makedepends=('python2-distribute')
depends=('python2')
source=(https://bitbucket.org/bitcraze/crazyflie-pc-client/downloads/${pkgname}-${pkgver}.tar.gz)
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root "${pkgdir}" || return 1
}
sha256sums=('59ce1497ecc2eb62b3cecb092ec13266448bf683edc1c81549d5df4da57edcd6')
