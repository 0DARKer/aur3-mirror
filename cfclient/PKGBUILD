# Maintainer : Gergely Imreh <imrehgATgmailDOTcom>
pkgname=cfclient
pkgver=2014.01.0
pkgrel=1
pkgdesc="Crazyflie quadcopter Python client and libraries"
arch=('any')
url="http://www.bitcraze.se/"
license=('GPL')
makedepends=('python2-distribute')
depends=('python2' 'python2-pyqt' 'python2-pygame')
optdepends=('python2-pyusb: controllers')
source=(https://github.com/bitcraze/crazyflie-clients-python/archive/${pkgver}.tar.gz)
package() {
  PYTHON=python2
  cd "${srcdir}/crazyflie-clients-python-${pkgver}"
  ${PYTHON} setup.py install --root "${pkgdir}" || return 1

  install -Dm755 "${pkgdir}/usr/LICENSE.txt" "${pkgdir}/usr/share/licenses/cfclient/LICENSE.txt"
  rm "${pkgdir}/usr/LICENSE.txt"

  install -Dm755 "${pkgdir}/usr/README.md" "${pkgdir}/usr/share/cfclient/README.md"
  rm "${pkgdir}/usr/README.md"

}
sha256sums=('5383a031b5b5d609621bd723c2cf5621b906be795144540e1db2b8d4e722b8dc')
