#contributor: sph <mail at sph-info.eu>
pkgname=guile-dbd-sqlite3
pkgver=2.1.4
pkgrel=1
pkgdesc='guile bindings for fuse'
arch=(any)
license=(GPL3)
makedepends=(git make)
depends=(guile sqlite3)
url=http://sph-info.eu/content/browse/name/guile-dbd-sqlite3/description

_giturl="git://sph-info.eu/guile-dbd-sqlite3"

git_prepare () {
  giturl=$1
  
  cd $srcdir
  msg "connecting to git server"

  if [[ -d $srcdir/$pkgname ]] ; then
    cd $pkgname && git pull
  else
    git clone $giturl
  fi

  msg "git clone done"

  build=$srcdir/$pkgname-build
  rm -rf $build
  git clone $srcdir/$pkgname $build
  cd $build
}

build() {
  git_prepare $_giturl
  msg "starting build"

  ./configure --prefix=/usr
  make
}

package() {
  build=$srcdir/$pkgname-build
  cd $build

  make DESTDIR=$pkgdir install

  rm -rf $build
}
