# Contributor: tantalum <tantalum at online dot de>
pkgname=guile-dbd-sqlite3
pkgver=2.1.4
pkgrel=1
pkgdesc='guile-dbi database driver sqlite3'
arch=(i686 x86_64 ppc)
license=GPL2
depends=(guile guile-dbi sqlite3)
url=https://github.com/tantalum53/guile-dbd-sqlite3
source=(http://sph-info.eu/_media/textual/computer/programs/${pkgname}-${pkgver}.tar.gz)
md5sums=(56f892711fcfd9c55abf73261cdff826)

build(){
 cd ${srcdir}/${pkgname}-${pkgver}

 ./configure --prefix=/usr || return 1
 make && make DESTDIR=${pkgdir} install || return 1
}
