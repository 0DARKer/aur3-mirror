# Maintainer: Zhengyu Xu <xzy3186@gmail.com>
#options for different desktop integration

_DESKTOP=0

###################################
# 1 --> gnome-shell (nautilus)    #
# 2 --> cinnamon (nemo)           #
# 3 --> KDE (dolphin)             #
# 4 --> xfce (thunar)             #
# 5 --> mate (caja)               #
# 6 --> other1 (with nautilus)    #
# 7 --> other2 (without nautilus) #
###################################

########################################################################
# DESKTOP auto-detection for different desktop environment             #
# It will be disabled if you set _DESKTOP manually above               #
########################################################################
if [ $_DESKTOP -eq 0 ]
then
   if ps -A | grep 'gnome-shell' > /dev/null
   then
      _DESKTOP=6
   fi
   if ps -A | grep 'nemo' > /dev/null
   then
      _DESKTOP=2
   fi
   if ps -A | grep 'kded4' > /dev/null
   then
      _DESKTOP=3
   fi
   if ps -A | grep 'Thunar' > /dev/null
   then
      _DESKTOP=4
   fi
   if ps -A | grep 'caja' > /dev/null
   then
      _DESKTOP=5
   fi
fi
if [ $_DESKTOP -eq 0 ]
then
   if ps -A | grep 'nautilus' > /dev/null
   then
      _DESKTOP=6
   else
      _DESKTOP=7
   fi
fi
###########################################################

pkgname=insync
pkgver=1.0.20
pkgrel=1
pkgdesc="An unofficial Google Drive client that runs on Linux, with support for various desktops"
url="https://support.insynchq.com/forums/discussion/2080/new-insync-version-1-0-20-with-linux-cli"
license=('custom:insync')
options=(!strip !zipman)
arch=('i686' 'x86_64')

############ For common part ############
   depends=('xdg-utils' 'glibc' 'gobject-introspection')
   if [ "$CARCH" = 'i686' ]; then
      source=("${pkgname}-${pkgver}-common.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}_i386.deb")
      sha256sums=('c0953cf709cbd3ad96c25bf569d04139d5a419468e4a7511118d717b254a2938')
   elif [ "$CARCH" = "x86_64" ]; then
      source=("${pkgname}-${pkgver}-common.deb::http://s.insynchq.com/builds/${pkgname}_${pkgver}_amd64.deb")
      sha256sums=('632d8cb63faea49a32832aa79c122751a29dc99b29d935ba636bfb68072969fe')
   fi
   noextract=("${pkgname}-${pkgver}-common.deb")

### For different destop/file-manager ###
############ other desktop 1 ############
if [ $_DESKTOP -eq 6 ]; then
   depends=("${depends[@]}"
   "nautilus" "python2-nautilus")
   source=("${source[@]}"
   "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-nautilus_${pkgver}_all.deb")
   sha256sums=("${sha256sums[@]}"
   "f572a7386ec9fd1d7c8f8c98cf5d34ca4e0d14fecfb0628222c5eb89fb5f04cc")
   noextract=("${noextract[@]}"
   "${pkgname}-${pkgver}-uncommon.deb")
   _option=""
fi
############ other desktop 2 ############
if [ $_DESKTOP -eq 7 ]; then
   #nothing to add
   _option=""
fi
############ gnome-shell ############
if [ $_DESKTOP -eq 1 ]; then
   depends=('xdotool' 'nautilus' 'python2-nautilus' 'gnome-shell')
   if [ "$CARCH" = 'i686' ]; then
      #source=("${pkgname}-${pkgver}-common.deb::http://s.insynchq.com/builds/${pkgname}-beta-gnome-cinnamon-common_${pkgver}_i386.deb")
      source=("${pkgname}-${pkgver}-common.deb::http://s.insynchq.com/builds/${pkgname}-beta-gnome-cinnamon-common_0.9.41_i386.deb")
      sha256sums=('687c3f64be3d189c5a757e6d652145615c410b5ffbe49052854559e2e55600cd')
   elif [ "$CARCH" = "x86_64" ]; then
      #source=("${pkgname}-${pkgver}-common.deb::http://s.insynchq.com/builds/${pkgname}-beta-gnome-cinnamon-common_${pkgver}_amd64.deb")
      source=("${pkgname}-${pkgver}-common.deb::http://s.insynchq.com/builds/${pkgname}-beta-gnome-cinnamon-common_0.9.41_amd64.deb")
      sha256sums=('9a8b1e9e13c8bd0b7301376d000ab3a44064c6baa88528b17ad17d225e4284bd')
   fi
   source=("${source[@]}"
   "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-beta-gnome_0.9.40_all.deb")
   #"${pkgname}-${pkgver}-gnome.deb::http://s.insynchq.com/builds/${pkgname}-beta-gnome_${pkgver}_all.deb")
   sha256sums=("${sha256sums[@]}"
   "cf4a7e0651872964b1d7169891515d4c7e3023e61536b9b1e28609fef021e8d1")
   noextract=("${pkgname}-${pkgver}-common.deb" "${pkgname}-${pkgver}-uncommon.deb")
   _option=" --gnome"
fi
############ cinnamon ############
if [ $_DESKTOP -eq 2 ]; then
   depends=("${depends[@]}"
   "nemo" "nemo-python-git")
   source=("${source[@]}"
   "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-nemo_${pkgver}_all.deb")
   sha256sums=("${sha256sums[@]}"
   "f4726b0c89443fcee7ae3a065c3a10fe3fdeb4425456669e93578e79d640f343")
   noextract=("${noextract[@]}"
   "${pkgname}-${pkgver}-uncommon.deb")
   _option=""
fi
############ KDE ############
if [ $_DESKTOP -eq 3 ]; then
   depends=("${depends[@]}"
   "kdebindings-python2" "kdebase-workspace")
   source=("${source[@]}"
   "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-dolphin_${pkgver}_all.deb")
   sha256sums=("${sha256sums[@]}"
   "1ff79eb51877c030b407e70deae044298e5df451efb5688334b44db8d66a67e2")
   noextract=("${noextract[@]}"
   "${pkgname}-${pkgver}-uncommon.deb")
   _option=" --kde"
fi
############ xfce ############
if [ $_DESKTOP -eq 4 ]; then
   depends=("${depends[@]}"
   "thunarx-python")
   source=("${source[@]}"
   "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-thunar_${pkgver}_all.deb")
   sha256sums=("${sha256sums[@]}"
   "127e15206b63f508629432f194c3ceb1b2c263dc30f8e85f60df8474a73fdebf")
   noextract=("${noextract[@]}"
   "${pkgname}-${pkgver}-uncommon.deb")
   _option=""
fi
############ mate ############
if [ $_DESKTOP -eq 5 ]; then
   depends=("${depends[@]}"
   "python2-caja")
   source=("${source[@]}"
   "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-caja_${pkgver}_all.deb")
   sha256sums=("${sha256sums[@]}"
   "c381cbc7d746d4568cd3f793cc5b73f084f6f8f9d756c91d61274a4421c42734")
   noextract=("${noextract[@]}"
   "${pkgname}-${pkgver}-uncommon.deb")
   _option=""
fi
source=("${source[@]}"
        "insync.service")
sha256sums=("${sha256sums[@]}"
            "0e302d4f1ce95a3838381094817b542505b8b9fe024aa01cca227d6184bb1f92")
install=$pkgname.install

package() {
   cd $srcdir
   [ -d ${pkgname}-${pkgver}-common ] && rm -r ${pkgname}-${pkgver}-common
   [ -d ${pkgname}-${pkgver}-common ] || mkdir ${pkgname}-${pkgver}-common
   mv ${pkgname}-${pkgver}-common.deb ${pkgname}-${pkgver}-common/
   cd $srcdir/${pkgname}-${pkgver}-common
   ar x ${pkgname}-${pkgver}-common.deb
   tar xvf data.tar.gz
   cp -rp usr $pkgdir

   if [ $_DESKTOP -lt 7 ]; then
      cd $srcdir
      [ -d ${pkgname}-${pkgver}-uncommon ] && rm -r ${pkgname}-${pkgver}-uncommon
      [ -d ${pkgname}-${pkgver}-uncommon ] || mkdir ${pkgname}-${pkgver}-uncommon
      mv ${pkgname}-${pkgver}-uncommon.deb ${pkgname}-${pkgver}-uncommon/
      cd $srcdir/${pkgname}-${pkgver}-uncommon
      ar x ${pkgname}-${pkgver}-uncommon.deb
      tar xvf data.tar.gz
      cp -rp usr $pkgdir
   fi
   #if [ $_DESKTOP -eq 2 ]; then
   #   cd $srcdir
   #   [ -d ${pkgname}-${pkgver}-cinnamon ] || mkdir ${pkgname}-${pkgver}-cinnamon
   #   mv ${pkgname}-${pkgver}-cinnamon.deb ${pkgname}-${pkgver}-cinnamon/
   #   cd $srcdir/${pkgname}-${pkgver}-cinnamon
   #   ar x ${pkgname}-${pkgver}-cinnamon.deb
   #   tar xvf data.tar.gz
   #   cp -rp usr $pkgdir
   #fi
   #if [ $_DESKTOP -eq 6 ]; then
   #   rm -r ${pkgdir}/usr/share/kde4
   #fi
   #if [ $_DESKTOP -eq 7 ]; then
   #   rm -r ${pkgdir}/usr/share/kde4
   #   rm -r ${pkgdir}/usr/share/nautilus-python
   #fi
   cd $pkgdir
   #[ -f usr/bin/insync-kde ] && sed -i "s/^python /python2 /" usr/bin/insync-kde
   for file in $(grep -R "/usr/bin/python" . | cut -f1 -d :)
   do
      sed -i "s|usr/bin/python$|usr/bin/python2|g" $file
   done
   mkdir -p ${pkgdir}/usr/lib/systemd/system
   sed "s/_OPTION/${_option}/g" ${srcdir}/insync.service >${pkgdir}/usr/lib/systemd/system/insync@.service
}

