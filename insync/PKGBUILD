############ mate ############
if [ $_DESKTOP -eq 5 ]; then
   depends=("${depends[@]}"
   "python2-caja")
   if [ "$CARCH" = 'i686' ]; then
      source=("${source[@]}"
      "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-beta-mate_${pkgver}_i386.deb")
