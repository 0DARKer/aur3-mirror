      sha256sums=("${sha256sums[@]}"
      "30acc13bbfd89cf010602b537b831f5a26c6f53d11d3fbadf82b142d0aa98ea8")
   fi
   noextract=("${noextract[@]}"
   "${pkgname}-${pkgver}-uncommon.deb")
   _option=" --kde"
fi
############ xfce ############
if [ $_DESKTOP -eq 4 ]; then
   depends=("${depends[@]}"
   "thunarx-python")
   if [ "$CARCH" = 'i686' ]; then
      source=("${source[@]}"
      "${pkgname}-${pkgver}-uncommon.deb::http://s.insynchq.com/builds/${pkgname}-beta-xfce_${pkgver}_i386.deb")
