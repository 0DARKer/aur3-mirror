# Contributor: mightyjaym <jm.ambrosino@free.fr>

pkgname=lib32-gdk-pixbuf
pkgver=0.22.0
pkgrel=7
pkgdesc="Image loading and manipulation library"
depends=(lib32-gtk lib32-libtiff lib32-libpng)
arch=(x86_64)
url=http://www.gtk.org/
license=('GPL')
groups=('lib32')
source=(ftp://mirrors.kernel.org/archlinux/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('7692d371b2f8df6996f00508e5a2ecae')

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/lib/gdk-pixbuf/loaders
  cp -R $startdir/src/usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
  cp -R $startdir/src/usr/lib/gdk-pixbuf/loaders/*.so* $startdir/pkg/opt/lib32/usr/lib/gdk-pixbuf/loaders
}
