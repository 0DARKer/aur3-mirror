pkgname=perl-geo-ip
_realname=Geo-IP
pkgver=1.36
pkgrel=1
pkgdesc="Provide a perl interface to locate country from IP address or host name"
arch=('i686' 'x86_64')
license=('unknown')
url="http://search.cpan.org/dist/${_realname}/"
depends=('geoip>=1.4.5' 'perl>=5.10.0')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/B/BO/BORISZ/${_realname}-${pkgver}.tar.gz)
md5sums=('e3cc9477bcf4344988c703e8b141f21a')

build() {
  cd ${srcdir}/${_realname}-${pkgver}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
