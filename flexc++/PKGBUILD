# Maintainer: Anton Jongsma <anton@felrood.nl>
pkgname=flexc++
pkgver=1.02.00
pkgrel=1
pkgdesc="C++ scanner generator"
arch=('i686' 'x86_64')
url="http://flexcpp.sourceforge.net/"
license=('GPL')
depends=('libbobcat')
makedepends=('icmake')
optdepends=()
source=("http://downloads.sourceforge.net/project/flexcpp/${pkgver}/flexc++_${pkgver}.orig.tar.gz")

build() {
  cd "$srcdir/flexc++-${pkgver}"
  CXXFLAGS="$CXXFLAGS -std=c++0x"
  ./build program
}

package() {
  cd "$srcdir/flexc++-${pkgver}"
  ./build install program ../../pkg/usr/bin/flexc++
}

md5sums=('f2740df677ac4efccb77a1298a5249ba')
