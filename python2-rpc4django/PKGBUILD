pkgname=python2-rpc4django
_realname=rpc4django
pkgver=0.2.0
pkgrel=1
pkgdesc="Handles JSONRPC and XMLRPC requests easily with Django"
arch=("any")
url="http://www.davidfischer.name/rpc4django/"
license=('BSD')
depends=('python2' 'django')
optdepends=('python2-docutils')
options=(!emptydirs)
source=("https://github.com/downloads/davidfischer/rpc4django/$_realname-$pkgver.tar.gz")
md5sums=('2a7356d1fc6417e2e259e9d73f34c9cc')

package() {
  cd "$srcdir/$_realname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

