pkgname=python2-rpc4django
_realname=rpc4django
pkgver=0.1.12
pkgrel=1
pkgdesc="Handles JSONRPC and XMLRPC requests easily with Django"
arch=("any")
url="http://www.davidfischer.name/rpc4django/"
license=('BSD')
depends=('python2')
options=(!emptydirs)
source=("http://www.davidfischer.name/wp-content/uploads/2012/02/rpc4django-0.1.12.tar.gz")
md5sums=("574fcff53a7588bf2079856a36ef407b")

package() {
  cd "$srcdir/$_realname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

