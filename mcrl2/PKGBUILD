# Maintainer: Tom Boshoven <tomboshoven@gmail.com>
# Creator: Bram Schoenmakers <me@bramschoenmakers.nl>

pkgname=mcrl2
pkgver=201107.1
pkgrel=3
pkgdesc="mCRL2 is a formal specification language with an associated toolset."
arch=('i686' 'x86_64')
depends=('wxgtk')
makedepends=('cmake')
url=('http://www.mcrl2.org')
license=('custom')
source=("http://www.win.tue.nl/mcrl2/download/release/$pkgname-$pkgver-src.tar.gz")
md5sums=('92cea7a1f2232ff1982d8a19c78264a2')

build() {
  mkdir $srcdir/build
  cd $srcdir/build

  cmake -DCMAKE_INSTALL_PREFIX=/usr $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/build

  make DESTDIR=$pkgdir install
}
# vim:syntax=sh
