# Contributor: wooptoo <wooptoo@gmail.com>

pkgname=tango-apache-icons
pkgver=1
pkgrel=2
arch=('i686' 'x86_64')
pkgdesc="Tango icons for Apache autoindex"
url="http://cmyk.wooptoo.com/misc/"
license="GPL"
depends=(apache tango-icon-theme)
install=$pkgname.install
source=(http://cmyk.wooptoo.com/misc/$pkgname.tar.gz)
md5sums=(54200c51eba5c48f68c3b4742ae45d23)

build() {
	cd $startdir/src/$pkgname/
	install -Dm 644 tango-apache-icons.conf $startdir/pkg/etc/httpd/conf/tango-apache-icons.conf
	install -Dm 644 .style.css $startdir/pkg/home/httpd/html/.style.css
}
