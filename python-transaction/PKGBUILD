pkgname=python-transaction
pkgver=1.4.1
pkgrel=1
pkgdesc='Transaction management for Python [Python 3]'
arch=('any')
url='http://pypi.python.org/pypi/transaction'
license=('ZPL')
depends=('python')
makedepends=('python-distribute')
source=(http://pypi.python.org/packages/source/t/transaction/transaction-$pkgver.zip)
md5sums=('8db2680bc0f999219861a67b8f335a88')

build() {
  cd "$srcdir/transaction-$pkgver"
  python setup.py build
}

package() {
  cd "$srcdir/transaction-$pkgver"
  python setup.py install --root="$pkgdir"
}

