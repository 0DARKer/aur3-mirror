pkgname=kbandwidth
pkgver=1.0.4
pkgrel=1
pkgdesc="This tool can show speed of any network interfaces."
url="http://kde-apps.org/content/show.php?content=18939"
depends=('kdelibs') 
source=(http://people.freenet.de/stealth/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('112f915fa802bda7d23d4be160dc8a83')

build() {
cd $startdir/src/$pkgname-$pkgver
./configure --disable-debug --prefix=/opt/kde
 make || return 1
make DESTDIR=$startdir/pkg install
}
	
