# Maintainer: M0Rf30

pkgname=capstone
pkgver=3.0
pkgrel=1
pkgdesc='A lightweight multi-platform, multi-architecture disassembly framework.'
arch=('i686' 'x86_64')
url='http://www.capstone-engine.org/index.html'
license=('BSD')
depends=('glibc')
_ver=3.0
source=("http://capstone-engine.org/download/$pkgver/${pkgname}-${_ver}.tar.gz")

build() {
  cd ${srcdir}/${pkgname}-${_ver}
  make
}

package() {
  cd ${srcdir}/${pkgname}-${_ver}
  make DESTDIR=$pkgdir LIBDIR=$pkgdir/usr/lib install
}

md5sums=('7183aea133dce66888f7a25c9ae8ea37')
