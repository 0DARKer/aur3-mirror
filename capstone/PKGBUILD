# Maintainer: M0Rf30

pkgname=capstone
pkgver=2.0rc1
pkgrel=1
pkgdesc='A lightweight multi-platform, multi-architecture disassembly framework.'
arch=('i686' 'x86_64')
url='http://www.capstone-engine.org/index.html'
license=('BSD')
depends=('glibc')
_ver=2.0-rc1
source=("http://capstone-engine.org/download/2.0/${pkgname}-${_ver}.tar.gz")

build() {
  cd ${srcdir}/${pkgname}${_ver}
  make
}

package() {
  cd ${srcdir}/${pkgname}${_ver}
  make DESTDIR=$pkgdir LIBDIR=$pkgdir/usr/lib install
}

md5sums=('a87f2fc65e475abaccc8afc8bcadfbc4')
