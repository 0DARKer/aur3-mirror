# Contributor: Reiser <metal@pop3.ru>

pkgname=hypervideoconverter
pkgver=0.4.1
pkgrel=1
pkgdesc="Gtk frontend for various command line tools such as ffmpeg."
arch=('i686')
license=('custom')
url="http://sourceforge.net/projects/hypervideoconve"
depends=('gtk2' 'rpmextract')
source=(http://downloads.sourceforge.net/hypervideoconve/hypervc-0.4.1-gtk2-rpm.tar.bz2)
install=($pkgname.install)
md5sums=('a6b197bc639457e95ead9b2bdedd9ce0')

build() {
  cd ${srcdir}/hypervcrpm-gtk2
  rpmextract.sh hypervc-0.4.1-linux-2.6-intel.rpm
  cp -R ./usr ${pkgdir}
}
