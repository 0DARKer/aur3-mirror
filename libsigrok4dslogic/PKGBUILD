# Contributor: Thomas Krug <t.krug@elektronenpumpe.de>

pkgname=libsigrok4dslogic
pkgver=0.3
pkgrel=1
pkgdesc="core library for the DreamSourceLab logic analyzer (based on libsigrok)"
arch=('i686' 'x86_64')
url="http://www.dreamsourcelab.com/"
license=('GPL3')
depends=('libzip' 'libserialport' 'libusb')
makedepends=('boost')
source=('http://www.dreamsourcelab.com/download/DSLogic-v0.3.tar.gz')
md5sums=('8c11f5b188673b7ac1343a7e5193cedb')

build() {
  cd "$srcdir/DSLogic-v0.3/libsigrok4DSLogic"

  ./autogen.sh
  ./configure --prefix=/usr --exec-prefix=/usr
  make
}

package() {
  cd "$srcdir/DSLogic-v0.3/libsigrok4DSLogic"

  make DESTDIR="$pkgdir" PREFIX=/usr install
}

