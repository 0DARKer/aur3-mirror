# Maintainer: neersighted <n@neersighted.com>

pkgname=ucsf-chimera
pkgver=1.9
pkgrel=1
pkgdesc='Extensible molecular modeling system'
url='https://cgl.ucsf.edu/chimera/'
license=('MIT')
install=ucsf-chimera.install
source=("chimera-${pkgver}-linux.bin")
md5sums=('bd1892d811fd1d0306828d1f5bed5508')
sha1sums=('30d83aa7f02b193f2a65d1168071c074f7276028')
sha256sums=('b9ea5def8692936bd8bdf2f7a4e0a34c0d4bfefb3c33cea1120459d9dde39902')
arch=('i686' 'x86_64')

package() {
  cd "${srcdir}"

  # Prepare the directory structure.
  install -dm755 "${pkgdir}/opt"

  # Run the installer.
  chmod +x chimera.bin
  ./chimera.bin -d "${pkgdir}/opt/ucsf-chimera"
}

