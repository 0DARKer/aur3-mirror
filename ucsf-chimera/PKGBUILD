# Maintainer: neersighted <n@neersighted.com>

pkgname=ucsf-chimera
pkgver=1.8.1
pkgrel=1
pkgdesc='Extensible molecular modeling system'
url='https://cgl.ucsf.edu/chimera/'
license=('MIT')
install=ucsf-chimera.install
source=("chimera-${pkgver}.bin::https://www.cgl.ucsf.edu/chimera/cgi-bin/secure/chimera-get.py?file=linux/chimera-${pkgver}-linux.bin&choice=Accept&ident=SomethingDynamic")
md5sums=('05dee23724c7c8a6ae22f3ec3168fa9d')
sha1sums=('4a19735f1a69f9d6d25e66d1dcc03d388f809b4b')
sha256sums=('b72b44df768e88a58ebd19a434c3566c0640e7fd7bb28a5ffd02c35ee9d5cc0c')
arch=('i686' 'x86_64')

package() {
  cd "${srcdir}"

  # Prepare the directory structure.
  install -dm755 "${pkgdir}/opt"

  # Run the installer.
  chmod +x chimera.bin
  ./chimera.bin -d "${pkgdir}/opt/ucsf-chimera"

  cd "${pkgdir}"
}

