# Maintainer: Pavel Borzenkov <pavel@voidptr.ru>

pkgname=criu
pkgver=1.1
pkgrel=1
pkgdesc="Checkpoint/Restore in Userspace tool"
url="http://criu.org"
license=("GPL2")
arch=("x86_64")
source=("http://download.openvz.org/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
depends=("protobuf-c")
makedepends=("xmlto" "asciidoc")
options=("!buildflags")
changelog=${pkgname}.changelog
md5sums=("c22838ad6cd85117b77c792517d9a608")
sha1sums=("118e2a3f2576c6cb96fa1d2ca5faa8f25a46b4ce")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}
