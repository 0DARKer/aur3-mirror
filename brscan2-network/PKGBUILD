# Contributor: Richard Kaka≈° <richard.kakas@gmail.com>

pkgname="brscan2-network"
pkgver="0.2.5"
pkgrel="4"
license=('GPL')
url="http://solutions.brother.com/linux/sol/printer/linux/sane_drivers.html"
pkgdesc="SANE drivers from Brother for scanners on a USB"

arch=('i686' 'x86_64')
depends=('sane' 'sed')
makedepends=('rpmextract' 'sane')
provides=('brscan2' 'brscan2-usb')
conflicts=('brscan2' 'brscan2-usb')

_arch="i386"
if [ "$CARCH" == "x86_64" ]; then 
	_arch="x86_64"
fi

install=brscan2-network.install
source=(http://www.brother.com/pub/bsc/linux/dlf/brscan2-$pkgver-1.$_arch.rpm)

md5sums=('944432983dcb918704862147b2a27977')
if [ "$CARCH" == "x86_64" ]; then 
	md5sums=('88ab217b814ba87ac855b21dc037e0ac')
fi

build() {
	cd $srcdir
	for i in *.rpm; do
		rpmextract.sh "$i" || return 1
	done
	
	mkdir -p $pkgdir/usr/bin || return 1
	cp -R $srcdir/usr/bin/* $pkgdir/usr/bin/ || return 1	
	cp -R $srcdir/usr/local/ $pkgdir/usr/ || return 1
	# handle libs
	if [ "$CARCH" == "x86_64" ]; then 
		cp -R $srcdir/usr/lib64/ $pkgdir/usr/ || return 1
		# link 64libs to 32libs dir
		mkdir -p $pkgdir/usr/lib/sane
		cd $pkgdir/usr/lib
		for i in *.so*; do
			ln -s ../lib64/$i .
		done
		cd sane
		for i in *.so*; do
			ln -s ../../lib64/sane/$i .
		done
	else
		cp -R $srcdir/usr/lib/ $pkgdir/usr/ || return 1
	fi
	#
}

