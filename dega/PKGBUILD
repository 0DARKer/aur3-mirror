pkgname=dega
pkgver=1.12
pkgrel=1
pkgdesc="A small Sega Master System and Game Gear emulator"
url="http://www.finalburn.com/dega"
license=()
groups=
provides=(dega)
depends=(sdl)
makedepends=(gcc nasm)
conflicts=()
replaces=()
backup=()
install=()
source=(http://www.emulinks.de/emus/$pkgname-$pkgver.tar.gz)
md5sums=('31bb460a2e2ac016e0985ba5064e9fde')
arch=('i686')

build()
{
    cd $startdir/src/$pkgname-$pkgver
    make
    install -D -m755 $startdir/src/$pkgname-$pkgver/dega $startdir/pkg/usr/bin/dega
}
