# Maintainer: Estevao Valadao <estevao@archlinux-br.org>

pkgname=lfc
pkgver=1.1.41
pkgrel=1
pkgdesc="A collection of basic c++ classes"
arch=('i686' 'x86_64')
url="http://www.lemke-it.com/"
license=('GPL')
source=(http://www.lemke-it.com/${pkgname}-${pkgver}.tar.gz)
sha1sums=(54875bf2a552f58fe21d02835093a6485b916741)

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    [[ $CARCH = x86_64 ]] && export ac_cv_func_malloc_0_nonnull=yes 
    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}

