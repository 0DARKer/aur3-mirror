# Author : NewEraCracker 
# Maintainer : Xi0N <grayfox.i0n@gmail.com

pkgname=loic
pkgver=1.0.3
pkgrel=1
pkgdesc="Low Orbit Ion Cannon - An open source network stress tool for Windows. Based on Praetox's loic project at https://sourceforge.net/projects/loic/ and writen in C#."
arch=('any')
url="https://github.com/NewEraCracker/LOIC"
depends=('mono' 'monodevelop')
makedepends=('unzip')
license=('GPL')
install=loic.install
source=("https://github.com/NewEraCracker/LOIC/zipball/1.1.2.3"
	"loic.desktop")
md5sums=('011e722af488b3ca35c39351067f4458'
	'e81a078d1f4a06fa4cda569c60b5f17a')
build() {
	cd NewEraCracker-LOIC-0983c16
	mdtool build
	install -D ../loic.desktop $pkgdir/usr/share/applications/loic.desktop
	mkdir -p $pkgdir/opt
	cp ../NewEraCracker-LOIC-0983c16 $pkgdir/opt -rp
}
