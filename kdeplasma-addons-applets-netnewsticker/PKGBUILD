# Maintainer: Paolo Herms

pkgname=kdeplasma-addons-applets-netnewsticker
pkgver=0.8.7
pkgrel=1
pkgdesc="KDE Plasma widget that indicates available RSS-feeds as a horizontal or vertical scrolling text"
url="http://netnewsticker.org"
license=('GPL')
arch=('i686' 'x86_64')
depends=('hicolor-icon-theme' 'gcc-libs-multilib' 'kdepimlibs')
install=install
makedepends=('rpmextract')
source=("http://netnewsticker.org/downloads/plasma-applet-netnewsticker-"$pkgver"-2010."$CARCH".rpm")
case $CARCH in
    i686)   md5sums=('8bce2ad92bb1c192e27a0990bb5396e5');;
    x86_64) md5sums=('7798596980d6383af46fc3ac8bc6cbd6');;
esac

build() {
    cd "$pkgdir"
    rpmextract.sh "$srcdir/`basename "$source"`"
}
