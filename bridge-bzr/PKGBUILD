# Maintainer: Ner0

pkgname=bridge-bzr
pkgver=44
pkgrel=1
pkgdesc="An indicator providing quick access to previous documents, files and websites related to your current activity."
arch=('i686' 'x86_64')
url="https://wiki.ubuntu.com/Bridge"
license=('GPL3')
depends=('libappindicator3' 'python2' 'zeitgeist')
makedepends=('bzr')
optdepends=('zeitgeist-datasources')

_bzrtrunk=lp:bridge
_bzrmod=bridge

build() {
  msg "Connecting to Bazaar server...."

  if [ -d $_bzrmod ]; then
    cd $_bzrmod && bzr pull $_bzrtrunk -r $pkgver && cd ..
    msg "The local files are updated."
  else
    bzr branch $_bzrtrunk $_bzrmod -r $pkgver
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  [ -d $_bzrmod-build ] && rm -rf $_bzrmod-build
  cp -r $_bzrmod $_bzrmod-build

}

package() {
  cd "$srcdir/$_bzrmod-build"

  python2 setup.py install --root="$pkgdir/" --optimize=1

  sed -i 's/python/python2/' "$pkgdir/opt/bridge/bridge-daemon"

  install -dm755 "$pkgdir/usr/bin"
  ln -fs "/opt/bridge/bridge-daemon" "$pkgdir/usr/bin"
}
