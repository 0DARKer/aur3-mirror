# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=gforth
pkgver=0.7.0
pkgrel=2
url="http://www.jwdt.com/~paysan/gforth.html"
pkgdesc="Gforth is a fast and portable implementation of the ANS Forth language"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libtool' )
source=(http://www.complang.tuwien.ac.at/forth/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('2979ae86ede73ce2b3576dae957f4098')
options=(libtool)
install=$pkgname.install

build() {
        cd $srcdir/$pkgname-$pkgver
        ./configure --prefix=/usr 
        make 
}
package() {
        cd $srcdir/$pkgname-$pkgver
        make prefix=$pkgdir/usr install
	rm $pkgdir/usr/share/info/dir
       }
