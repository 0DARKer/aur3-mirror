pkgname=mate-dialogs
pkgver=2011.10.29
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=(i686 x86_64)
license=('LGPL')
depends=('libmatenotify')
makedepends=('intltool' 'gtk-doc' 'mate-doc-utils')
url="http://matsusoft.com.ar/projects"
groups=('mate')
provides=('zenity')
conflicts=('zenity')
options=('!emptydirs' '!libtool')
source=(http://sourceforge.net/projects/matede/files/${pkgver}/${pkgname}.tar.gz/download)
sha256sums=('98775b664bb9ef47640b4c3a0ce6d97a90214dcd145815a10d050bc543703cc9')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static --disable-scrollkeeper || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"

	make DESTDIR="${pkgdir}" install
	# hax!
	ln -s matedialog ${pkgdir}/usr/bin/zenity
}
