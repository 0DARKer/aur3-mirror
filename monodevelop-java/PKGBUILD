pkgname=monodevelop-java
pkgver=2.6
pkgrel=1
pkgdesc="Java language support for monodevelop"
arch=('i686' 'x86_64')
url="http://monodevelop.com"
license=('GPL')
depends=('gtk-sharp-2' 'monodevelop>=2.2' 'mono-addins' 'java-environment')
makedepends=('mono')
source=(http://origin-download.mono-project.com/sources/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('8d7714770468706b29af83054bb5c40b')

build() {
  export MONO_SHARED_DIR="$startdir/src/.wabi"
  mkdir -p "$MONO_SHARED_DIR"

  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
