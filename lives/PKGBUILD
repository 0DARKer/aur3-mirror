# Contributor: Angelo Theodorou <encelo@users.sourceforge.net>
pkgname=lives
pkgver=1.6.1
pkgrel=1
pkgdesc="A Video Editing System"
arch=('i686' 'x86_64')
url="http://lives.sourceforge.net"
license=('GPL')
depends=('mplayer' 'imagemagick' 'perl' 'gtk2' 'sox' 'libvisual' 'liboil' 'libavc1394' 'jack' 'mjpegtools' 'libvorbis' 'libtheora' 'python')
optdepends=('xorg-utils' 'sdl' 'mjpegtools' 'libogg' 'libdv' 'mkvtoolnix' 'libmatroska' 'ogmtools' 'dvgrab' 'libraw1394' 'cdrkit' 'lame' 'x264' 'pulse' 'youtube-dl')
options=(!libtool)
changelog=lives.changelog
source=(http://www.xs4all.nl/%7Esalsaman/lives/current/LiVES-$pkgver.tar.bz2)
md5sums=('8c1e79592c9f40c16aff268f0ff104f1')

build() {
  cd "$srcdir"/$pkgname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"/$pkgname-$pkgver

  make DESTDIR="$pkgdir" install
  rm "$pkgdir"/usr/bin/lives
  ln -s /usr/bin/lives-exe "$pkgdir"/usr/bin/lives
}
