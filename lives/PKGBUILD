# Contributor: Angelo Theodorou <encelo@users.sourceforge.net>
pkgname=lives
pkgver=1.4.9
pkgrel=2
pkgdesc="A Video Editing System"
arch=('i686' 'x86_64')
url="http://www.xs4all.nl/~salsaman/lives/"
license=('GPL')
depends=('mplayer' 'imagemagick' 'perl' 'gtk2' 'sox' 'libvisual' 'liboil' 'libavc1394' 'jack' 'mjpegtools' 'libvorbis' 'libtheora' 'python')
optdepends=('xorg-utils' 'sdl' 'mjpegtools' 'libogg' 'libdv' 'mkvtoolnix' 'libmatroska' 'ogmtools' 'dvgrab' 'libraw1394' 'cdrkit' 'lame' 'x264' 'pulse')
options=(!libtool)
changelog=lives.changelog
source=(http://www.xs4all.nl/%7Esalsaman/lives/current/LiVES-$pkgver.tar.bz2 weed-compat.h.patch)
md5sums=('4664a50abf0efc12b536a2830a43dc72' '51944c67a8356150e73b963f41f52ddf')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  patch -p0 < ../weed-compat.h.patch

  ./configure --disable-statics --prefix=/usr
  make
}

package() {
  cd "$srcdir"/$pkgname-$pkgver

  make DESTDIR="$pkgdir" install
  rm "$pkgdir"/usr/bin/lives
  ln -s /usr/bin/lives-exe "$pkgdir"/usr/bin/lives
}
