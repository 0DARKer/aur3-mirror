# Maintainer: filirom1 <filirom1@gmail.com>
_npmname=css-b64-images
pkgname=nodejs-css-b64-images # All lowercase
pkgver=0.2.2
pkgrel=1
pkgdesc="Base64 images in your css"
arch=(any)
url="https://github.com/Filirom1/css-base64-images"
license=(MIT)
depends=('nodejs' )
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(8567039fb3b6da50567e97a7e75e9ac3a0bee7dd)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
