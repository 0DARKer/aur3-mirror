# Contributor: Zdenek Janak <janak@physics.muni.cz>

pkgname=munipack
pkgver=0.5.0
pkgrel=1
pkgdesc="General astronomical photometry software package"
arch=('i686' 'x86_64')
url="http://integral.physics.muni.cz/munipack/"
license=('GPL3')
makedepends=('gcc-fortran' 'cfitsio')
source=(http://integral.physics.muni.cz/pub/$pkgname/$pkgname-$pkgver.tar.gz munipack.patch)
md5sums=('3ac4880991413339ae77fbb821b40cd2'
         '0e0031dbc680706a270fd4f5b0e99bd1')

build() {
  cd "$srcdir/$pkgname"
  patch -p1 < $srcdir/munipack.patch
  ./configure --prefix=/usr --with-xmunipack=no
  make || return 1
  make DESTDIR="$pkgdir/" install
  install script/qmphot.pl $pkgdir/usr/bin/
  install -D -T -m 644 munipack.txt $pkgdir/usr/share/man/man1/munipack.1
}
