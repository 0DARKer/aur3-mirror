# Maintainer:  Daniel YC Lin <dlin.tw at gmail>
# Contributor : Tdy  <tdy@gmx.com>, Biginoz <biginoz at free.fr>, Archan Paul <paul.archan@gmail.com>
pkgname=sweethome3d
pkgver=3.7
pkgrel=2
pkgdesc="An interior design application"
arch=('any')
url="http://www.sweethome3d.com/"
license=('GPL')
depends=('bash' 'java-runtime')
source=(sweethome3d
 http://downloads.sourceforge.net/$pkgname/SweetHome3D-$pkgver.jar
 $pkgname.desktop $pkgname.png)
package() {
  cd "$srcdir"
  mkdir -p "$pkgdir/usr/share/java/"
  install -Dm644 SweetHome3D-$pkgver.jar "$pkgdir/usr/share/java/sweethome3d.jar"
  install -Dm644 $pkgname.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
  install -Dm644 $pkgname.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm755 ../sweethome3d "$pkgdir/usr/bin/sweethome3d"
}
md5sums=('ea0166c1fb8f9d8de4a62d470cb94630'
         'e9c9ac2e44e0820caebae928bb002e37'
         '5d5f1b5d390b71d545e09b3afc66ac38'
         '4fa1604285c1d8c474e3a914b6a4e6ce')
