# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Sebastien Binet <binet@lblbox>
pkgname=python-pyopencl
pkgver=0.0.1
pkgrel=1
pkgdesc="OpenCL wrapper module"
url="http://pyopencl.next-touch.com/"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('python')
makedepends=()
backup=()
install=
source=(http://pyopencl.next-touch.com/files/pyopencl-${pkgver}.tar.bz2)
md5sums=('e4f7a63d6c5f714e743bf720e3205f21')

build() {
  cd $startdir/src/pyopencl-$pkgver
  python setup.py build || return 1
  python setup.py install --prefix=/usr --root=$startdir/pkg || return 1
}