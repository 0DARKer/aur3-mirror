pkgname=gtk-engine-equinox
pkgver=1.30.2
pkgrel=2
pkgdesc="A heavily modified version of the beautiful Aurora engine"
url="http://gnome-look.org/content/show.php/Equinox+GTK+Engine?content=121881"
license=('GPL2')
arch=('i686' 'x86_64')
depends=('gtk2')
makedepends=('pkgconfig')
conflicts=()
options=('!libtool')
source=("http://gnome-look.org/CONTENT/content-files/121881-equinox-1.30.tar.bz2")
sha256sums=('1fea28bb08e89c63bdcb9ba8ee612b4e8fd9bea56a715efe6d7d8bcd7848013f')

build() {
        # extract engine files
        tar xzf equinox-gtk-engine.tar.gz
        cd "${srcdir}"/equinox-1.30

	# Toolbar Fix
	sed -i "985 s_\(EQUINOX.*\)_widget \&\& \1_" src/equinox_style.c
        
	./configure --prefix=/usr --enable-animation
        make

}
package() {
	cd "${srcdir}"/equinox-1.30
        make DESTDIR="${pkgdir}" install
}
