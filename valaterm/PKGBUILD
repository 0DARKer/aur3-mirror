# Maintainer: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
# Contributor: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
pkgname=valaterm
pkgver=0.4.3
pkgrel=1
pkgdesc="ValaTerm is a lightweight terminal written in Vala"
arch=('i686' 'x86_64')
url="https://gitorious.org/valaterm/"
license=('GPL3')
depends=('vte')
makedepends=('vala>=0.10' 'gcc' 'intltool' 'gettext' 'python')
conflicts=('valaterm-gtk3')
source=(http://git-jpdeplaix.dyndns.org/valaterm/valaterm.git/snapshot/valaterm-0.4.3.tar.bz2)
sha512sums=('7911a0a3465c9604a7bd80154327a34c9114b9054f942acf77f80f2ef351507729fdcf78b9e2849e74d36545ccd061ee37f219c1cd019a2362d1182804b44058')

build()
{
	cd "$srcdir/$pkgname-$pkgver"

	./waf configure --prefix=/usr || return 1
	./waf build || return 1
}

package ()
{
	cd "$srcdir/$pkgname-$pkgver"

	./waf install --destdir=$pkgdir || return 1
}
