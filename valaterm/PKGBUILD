# Maintainer: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
# Contributor: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
pkgname=valaterm
pkgver=0.4.2
pkgrel=1
pkgdesc="ValaTerm is a lightweight terminal written in Vala"
arch=('i686' 'x86_64')
url="https://gitorious.org/valaterm/"
license=('GPL3')
depends=('gtk2' 'vte')
makedepends=('vala' 'gcc' 'intltool' 'gettext' 'python')
conflicts=('valaterm-gtk3')
source=(http://jpdeplaix.free.fr/downloads/$pkgname-$pkgver.tar.bz2)
sha512sums=('586a68d74fa5d4fa579cc22723c199520904b65dbd64d6c7ee740376776fd7f4cf7d24040a55d9751b02dffd7713bea8a89d7cecfedad0a00c02a50cf2ff9724')

build()
{
	cd "$srcdir/$pkgname-$pkgver"

	./waf configure --prefix=/usr || return 1
	./waf build || return 1
}

package ()
{
	cd "$srcdir/$pkgname-$pkgver"

	./waf install --destdir=$pkgdir || return 1
}