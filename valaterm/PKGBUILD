# Maintainer: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
# Contributor: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
pkgname=valaterm
pkgver=0.4.2
pkgrel=1
pkgdesc="ValaTerm is a lightweight terminal written in Vala"
arch=('i686' 'x86_64')
url="https://gitorious.org/valaterm/"
license=('GPL3')
depends=('gtk2' 'glib2' 'vte')
makedepends=('vala' 'gcc' 'intltool' 'gettext' 'python')
source=(http://vala-overlay.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
sha512sums=('bac2ae980969cb10d82b3d3a5c16abffc079cd6ef380a4a34c8eff58beeb823072ffffbceec0ca21fcab08e7267eb49211501f8a5a376bf245d609d124c82161')

build()
{
	cd "$srcdir/$pkgname-$pkgver"

	./waf configure --prefix=/usr || return 1
	./waf build || return 1
}

package ()
{
	cd "$srcdir/$pkgname-$pkgver"

	./waf install --destdir=$pkgdir || return 1
}