# Maintainer: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
# Contributor: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
pkgname=valaterm
pkgver=0.5rc1
_pkgver=0.5-rc1
pkgrel=1
pkgdesc="ValaTerm is a lightweight terminal written in Vala"
arch=('i686' 'x86_64')
url="http://git-jpdeplaix.dyndns.org/valaterm/"
license=('GPL3')
depends=('vte')
makedepends=('vala>=0.10' 'gcc' 'intltool' 'gettext' 'python')
conflicts=('valaterm-gtk3')
source=(http://git-jpdeplaix.dyndns.org/valaterm/valaterm.git/snapshot/valaterm-$_pkgver.tar.bz2)
sha512sums=('feb03665434155b7cee94ccb772507988953e43b35d420f33c1f605ae335f386d2fb99c8e38e35fbc9d321297666ef26202602fae9bd26ff5323241412b2e77d')

build()
{
	cd "$srcdir/$pkgname-$_pkgver"

	./waf configure --prefix=/usr || return 1
	./waf build || return 1
}

package ()
{
	cd "$srcdir/$pkgname-$_pkgver"

	./waf install --destdir=$pkgdir || return 1
}
