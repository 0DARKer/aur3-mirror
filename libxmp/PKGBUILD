# Quick and dirty edit of the xmp 3 pkgbuild to get things working

pkgname=libxmp
pkgver=4.1.0
pkgrel=1
pkgdesc="Library for the Extended Module Player"
arch=(i686 x86_64)
url="http://xmp.sourceforge.net/"
license=('GPL')
depends=()
makedepends=('audacious' 'xmms' 'bmp')
optdepends=('audacious: audacious plugin'
            'xmms: xmms plugin'
            'bmp: bmp plugin'
            'pulseaudio: pulseaduio support')
# backup=('etc/xmp/xmp.conf' 'etc/xmp/modules.conf')
# install="$pkgname.install"
source=("http://downloads.sourceforge.net/sourceforge/xmp/$pkgname-$pkgver.tar.gz")
md5sums=('6e110ffbc71265069c34cd682c98c519')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure #--prefix=/usr \
              #--enable-nas \
              #--enable-pulseaudio \
              #--enable-xmms-plugin \
              #--enable-bmp-plugin \
              #--enable-audacious-plugin \
              #--enable-esd
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
