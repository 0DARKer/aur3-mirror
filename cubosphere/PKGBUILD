# Maintainer: Jozef Riha <jose1711 at gmail dot com>

pkgname=cubosphere
pkgver=0.04b
pkgrel=5
pkgdesc="3d puzzle similar to Kula World/Roll Away"
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/cubosphere/"
license=('GPL')
depends=('libjpeg' 'lua' 'sdl_ttf' 'sdl_mixer' 'glew')
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}_unix_${pkgver}.tar.gz $pkgname.desktop) 
md5sums=('4d594015196bb546576903f225f3b3c8'
         '7f7afe94baa3f22f96792b7ff18bd7ac')

build() {
  cd $srcdir/
  sed -i -e 's/-llualib//' -e '1s/#//' -e '/^PREFIX/s/local//' Makefile
  make
}

package() {
  cd $srcdir/
  make install DESTDIR=$pkgdir
  install -D -m644 $srcdir/cubosphere.desktop $pkgdir/usr/share/applications/cubosphere.desktop
  find $pkgdir -name "Thumbs.db" -exec rm -f '{}' \;
  find $pkgdir -name "*~" -exec rm -f '{}' \;
}
