# Mantainer: Diego <cdprincipe@at@gmail@dot@com>

pkgname=qtcurve-style-numix
pkgver=1
pkgrel=1
pkgdesc="A flat and light theme with a modern look"
arch=('any')
url="http://half-left.deviantart.com/art/KDE4-QtCurve-Numix-378256536"
license=('GPL3')
depends=('qtcurve-kde4')
optdepends=('gtk-theme-numix: Gtk theme'
            'qtcurve-kde3'
            'qtcurve-gtk2')
source=('http://fc01.deviantart.net/fs70/f/2013/166/5/7/kde4___qtcurve___numix_by_half_left-d697cm0.zip')

package() {
  install -d $pkgdir/usr/share/apps/QtCurve
  install -Dm755 $srcdir/Numix.qtcurve $pkgdir/usr/share/apps/QtCurve/
  install -d $pkgdir/usr/share/apps/color-schemes
  install -Dm755 $srcdir/Numix.colors $pkgdir/usr/share/apps/color-schemes/
}

md5sums=('ceef3c31e9ae593df518a9fea3cf93f3')
