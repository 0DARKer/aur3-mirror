# Maintainer: Josh Klar <j@iv597.com>
pkgname=budgie-desktop
pkgver=6
_pkgname=budgie-desktop-${pkgver}
pkgrel=2
pkgdesc="Simple GTK3 desktop experience"
arch=('any')
url="http://evolve-os.com/"
license=('GPLv2')
groups=()
depends=('gtk3' 'upower' 'libwnck3' 'gnome-menus' 'gnome-settings-daemon' 'libpeas' 'mutter' 'desktop-file-utils' 'libpulse' 'vala' 'libgee')
makedepends=('autoconf' 'git')
checkdepends=()
optdepends=()
provides=('budgie-desktop')
conflicts=('budgie-desktop-git')
replaces=()
backup=()
options=()
install=budgie-desktop.install
changelog=
source=('https://github.com/evolve-os/budgie-desktop/releases/download/v6/budgie-desktop-6.tar.xz'
        'budgie-desktop.install')
noextract=()
md5sums=('e18b87844783e593f6de6bc0d8e38e96'
         'c1ff1a89371c426e771b81368c04185b')

build() {
	cd "$srcdir/$_pkgname"
	autoreconf --force --install
	./configure --prefix=/usr
	make
}

check() {
	cd "$srcdir/$_pkgname"
	make -k check
}

package() {
	cd "$srcdir/$_pkgname"
	make DESTDIR="$pkgdir/" install
}
