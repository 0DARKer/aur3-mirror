# Maintainer: Luiz Ribeiro <luizribeiro@gmail.com>

pkgname=luagl
pkgver=1.01
pkgrel=2
pkgdesc="LuaGL is a library that provides access to all of the OpenGL funcionality from Lua script language."
url="http://luagl.sourceforge.net"
depends=('lua' 'glut' 'xorg')
arch=('i686')
license="MIT"
source=(http://ufpr.dl.sourceforge.net/sourceforge/luagl/LuaGL_v101.tar.gz)
md5sums=('3fa1bfd0e9fa4990eed4a89f86df4a9f')

build() {
	cd $startdir/src/LuaGL
	cd include
	cp LuaGlut.h LuaGLUT.h
	cd ../src
	gcc *.c -o luagl -llua -lglut -lGL -lGLU -lXext -lXmu -lXi -lX11 -I../include -I/usr/include/GL -L/usr/X11R6/lib
	mkdir -p $startdir/pkg/usr/bin
	cp luagl $startdir/pkg/usr/bin/luagl
}
