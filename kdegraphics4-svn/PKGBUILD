# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdegraphics4-svn
pkgver=1218603
pkgrel=1
pkgdesc="KDE4 Graphics Programs"
arch=('i686' 'x86_64')
url="http://www.kde.org"
license=('GPL')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'subversion' 'docbook-xsl')
depends=('kdelibs4-git' 'kdebase4-runtime-git' 'libgphoto2' 'libxxf86vm' 'qimageblitz' 'sane'
	 'lcms' 'poppler-qt' 'chmlib' 'djvulibre' 'libspectre' 'ebook-tools')
provides=(kdegraphics)
conflicts=(kdegraphics)

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdegraphics
_svnmod=kdegraphics

build() {
 cd $srcdir
if [ -d $_svnmod/.svn ]; then
   (cd $_svnmod && svn up)
else
   svn co $_svntrunk $_svnmod
fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
cd $_svnmod

cd $srcdir
  mkdir $_svnmod-build
  cd $_svnmod-build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=Release \
                -DCMAKE_SKIP_RPATH=ON \
                -DCMAKE_INSTALL_PREFIX=/usr
}

package() {
cd $srcdir/$_svnmod-build
make DESTDIR=$pkgdir install
rm -r cmake $startdir/src/$_svnmod-build
}
