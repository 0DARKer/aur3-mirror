# Maintainer: Alfredo Ramos <alfredo dot ramos at yandex dot com>

pkgname=slim-theme-simplix
pkgver=r33.f4849dc
pkgrel=1
pkgdesc="simpliX theme for SLiM."
arch=(
	"$CARCH"
)
url="http://sixsixfive.deviantart.com/art/simpliX-346404452"
license=(
	"CCPL:cc-by-4.0"
)

depends=(
	"slim>=1.3.6"
	"helvetica-font"
)
optdepends=()
makedepends=(
	"git"
)
provides=(
	"${pkgname}=${pkgver}"
)
conflicts=(
	"${pkgname}"
)
replaces=(
	"${pkgname}"
)

source=(
	"${pkgname}::git+https://github.com/sixsixfive/themes.git"
)
md5sums=(
	"SKIP"
)
sha512sums=(
	"SKIP"
)

pkgver() {
	cd ${srcdir}/${pkgname}
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

_themename=simpliX

package() {
	# Create base directories
	install -dm755 ${pkgdir}/usr/share/slim/themes
	
	# Change the current working directory
	cd ${srcdir}/${pkgname}/${_themename}
	
	# SLiM theme
	cp -R ./Extras/SLiM-1.3.6/${_themename} ${pkgdir}/usr/share/slim/themes
}