pkgname=ruby-gnome2-all
pkgver=1.0.0
pkgrel=1
pkgdesc="Ruby Gnome (all) bindings"
arch=('i686' 'x86_64')
url="http://ruby-gnome2.sourceforge.jp"
license=('LGPL')
depends=('ruby' 'ruby-pkgconfig' 'ruby-cairo' 'libgnomeprintui' 'goocanvas'  'gtksourceview' 'gtkglext' 'libpanelappletmm')
conflicts=('ruby-gnome2' 'ruby-gtk2' 'ruby-pango' 'ruby-gnomecanvas' 'ruby-glib2' 'ruby-atk' 'ruby-libart' 'ruby-gdkpixbuf2' 'ruby-gconf2')
provides=('ruby-gnome2' 'ruby-gtk2' 'ruby-pango' 'ruby-gnomecanvas' 'ruby-glib2' 'ruby-atk' 'ruby-libart' 'ruby-gdkpixbuf2' 'ruby-gconf2')
source=(http://downloads.sourceforge.net/ruby-gnome2/$pkgname-$pkgver.tar.gz)
md5sums=('1e1500f7ce594e37f560c4ee3d969f40')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ruby extconf.rb
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
}

# === develop Guide
#
# $ ruby extconf.rb  # include all
# $ make 
# 
# $ ruby extconf.rb gtk2 # only include gtk2
# $ make
#
# avaliables packages: gnome2 gtk2 ..
#
# == test
#
# $ cd gtk2
# $ ruby extconf.rb
# $ make






