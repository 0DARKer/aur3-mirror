# Maintainer: Cory Giles <mail@corygil.es>

pkgname=bedops
pkgver=2.4.1
pkgrel=1
pkgdesc="Highly scalable genomic feature operations."
arch=('i686' 'x86_64')
url="http://github.com/bedops/bedops"
license=('GPL')
depends=('python2')

if [ "$CARCH" == "x86_64" ]; then
    md5sums=('ddd75fcf53e0f5327ec9a55969442213')
else
    md5sums=('072605787913da71c4ef39e2882904f9')
fi

source=(https://github.com/${pkgname}/${pkgname}/releases/download/v${pkgver}/${pkgname}_linux_${CARCH/3/6}-v${pkgver}.tar.bz2)

build() {
    cd "$srcdir"
    sed -i 's/#!\/usr\/bin\/env python/#!\/usr\/bin\/env python2/g' bin/*
}

package() {
    cd "$srcdir"
    mkdir -p "$pkgdir/usr/bin"
    install -t "$pkgdir/usr/bin" bin/*
}
