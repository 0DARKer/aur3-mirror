pkgname=le
pkgver=1.14.9
pkgrel=1
pkgdesc="A text editor in memorial to Norton Editor with block and binary operations"
arch=('i686' 'x86_64')
url="http://freecode.com/projects/leeditor"
license=('GPL3')
depends=('gcc-libs' 'ncurses')
source=("http://fossies.org/linux/misc/$pkgname-$pkgver.tar.xz")
md5sums=('a7125ce54d80cb15c6366143214e4cc5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
