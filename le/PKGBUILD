pkgname=le
pkgver=1.14.5
pkgrel=2
pkgdesc="Text Editor in memorial to Norton Editor with block and binary operations"
arch=('i686' 'x86_64')
url="http://freshmeat.net/projects/leeditor/"
license=('GPL2')
depends=('gcc-libs' 'ncurses' 'sh')
source=(http://ftp.yars.free.net/pub/source/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('7b336855a074e27a5ac0d05f79aafd7c')

build() {
  cd $srcdir/$pkgname-$pkgver/
  ./configure --prefix=/usr 
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver/
  make DESTDIR="$pkgdir" install
}
