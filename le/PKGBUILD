pkgname=le
pkgver=1.14.5
pkgrel=1
pkgdesc="Text Editor in memorial to Norton Editor with block and binary operations"
arch=('i686' 'x86_64')
url="http://freshmeat.net/projects/leeditor/"
license=('GPL2')
depends=('gcc-libs' 'ncurses' 'sh')
source=(ftp://ftp.yar.ru/pub/source/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('92d9ff5e0e91eba6b93d49d50070143c')

build() {
  cd $srcdir/$pkgname-$pkgver/
  ./configure --prefix=/usr 
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver/
  make DESTDIR="$pkgdir" install
}
