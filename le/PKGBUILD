pkgname=le
pkgver=1.14.6
pkgrel=1
pkgdesc="Text editor in memorial to Norton Editor with block and binary operations"
arch=('i686' 'x86_64')
url="http://freecode.com/projects/leeditor"
license=('GPL3')
depends=('gcc-libs' 'ncurses')
source=("http://ftp.yars.free.net/pub/source/le/${pkgname}-${pkgver}.tar.xz")
md5sums=('b7d035f201dfeacec2c7d1dd8edce363')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install || return 1
}
