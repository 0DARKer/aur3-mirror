# Maintainer: Simon Klemenc <simon@booya.at>
project_name=ezodf
pkgname=python-ezodf-git
pkgver=v0.2.4.r10.g061c4aa
pkgrel=1
pkgdesc="A Python lib for OpenDocument (dual python2/python3)"
arch=('any')
url="https://github.com/iwschris/ezodf2"
license=('MIT')
depends=('python2-lxml' 'python-lxml')
makedepends=('git')
conflicts=('expac')
provides=('expac')
source=("$pkgname"::'git://github.com/iwschris/ezodf2')
# Because the sources are not static, skip Git checksum:
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  git describe --long --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}
package() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir/"
  python setup.py install --root="$pkgdir/"
}
