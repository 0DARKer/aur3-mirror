# contributor: Marcin "eXine" M. <exine@jun.pl>

pkgname=android-ndk
pkgver=r5
pkgrel=1
pkgdesc="android C/C++ developer kit"
arch=(i686 x86_64)
url="http://developer.android.com/sdk/ndk/index.html"
license=('GPL')
depends=(android-sdk)
makedepends=(unzip)
source=(http://dl.google.com/android/ndk/android-ndk-$pkgver-linux-x86.tar.bz2)
md5sums=('49d5c35ec02bafc074842542c58b7eb3')

build() {
  cd "$srcdir/"

  mkdir -p $pkgdir/opt/
  cp -a $srcdir/$pkgname-$pkgver $pkgdir/opt/android-ndk
}
