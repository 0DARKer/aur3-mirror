pkgname=android-ndk
pkgver=r6
pkgrel=1
pkgdesc="android C/C++ developer kit"
arch=(i686 x86_64)
url="http://developer.android.com/sdk/ndk/index.html"
license=('GPL')
depends=(android-sdk)
options=(!strip)
makedepends=(tar)
source=(https://dl-ssl.google.com/android/ndk/android-ndk-$pkgver-linux-x86.tar.bz2)
md5sums=('ff0a43085fe206696d5cdcef3f4f4637')
install=$pkgname.install

package() {
  cd "$pkgdir/"
  mkdir -p opt etc/profile.d
  cp -a $srcdir/$pkgname-$pkgver $pkgdir/opt/android-ndk
  echo 'export PATH=$PATH:/opt/android-ndk' > etc/profile.d/android-ndk.sh
  echo 'export ANDROID_NDK=/opt/android-ndk' >> etc/profile.d/android-ndk.sh
  chmod 755 etc/profile.d/android-ndk.sh

  #chgrp -R 420 opt/$pkgname/{toolchains,platforms,build,ndk-gdb,ndk-build,sources}
  #chmod -R g+w opt/$pkgname/{toolchains,platforms,build,ndk-gdb,ndk-build,sources}

}
