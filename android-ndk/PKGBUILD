# Maintainer: Daniel Micay <danielmicay@gmail.com>
pkgname=android-ndk
pkgver=r6b
pkgrel=2
pkgdesc="Android C/C++ developer kit"
arch=(i686 x86_64)
url="http://developer.android.com/sdk/ndk/index.html"
license=(GPL LGPL custom)
depends=(android-sdk)
options=(!strip)
makedepends=(tar)
source=(https://dl-ssl.google.com/android/ndk/$pkgname-$pkgver-linux-x86.tar.bz2
        $pkgname.sh)
md5sums=('309f35e49b64313cfb20ac428df4cec2'
         '372f74400bfa061642c4b4175f2ddb48')
install=$pkgname.install

package() {
  cd "$pkgdir"
  install -Dm755 "$srcdir/android-ndk.sh" etc/profile.d/android-ndk.sh
  mkdir opt
  cp -a "$srcdir/$pkgname-$pkgver" opt/android-ndk
  # Fix broken permissions
  chmod -R a=g opt/android-ndk
  chmod -R u+w opt/android-ndk
}
