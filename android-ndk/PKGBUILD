pkgname=android-ndk
pkgver=r5b
pkgrel=1
pkgdesc="android C/C++ developer kit"
arch=(i686 x86_64)
url="http://developer.android.com/sdk/ndk/index.html"
license=('GPL')
depends=(android-sdk)
options=(!strip)
makedepends=(tar)
source=(http://dl.google.com/android/ndk/android-ndk-$pkgver-linux-x86.tar.bz2)
md5sums=('4c0045ddc2bfd657be9d5177d0e0b7e7')

build() {
  cd "$srcdir/"

  mkdir -p $pkgdir/opt/
  cp -a $srcdir/$pkgname-$pkgver $pkgdir/opt/android-ndk
}
