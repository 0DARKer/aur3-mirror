# Maintainer: anonymous-arch <anonymous-arch@slopsbox.com>
pkgname=glib-networking-nognome
pkgver=2.28.7
pkgrel=4
pkgdesc="Network-related giomodules for glib without GNOME/gsetting dependencies"
arch=('i686' 'x86_64')
url="http://www.gtk.org/"
license=('GPL2')
depends=('glib2' 'libproxy' 'gnutls' 'libgcrypt' 'ca-certificates')
makedepends=('intltool')
provides=('glib-networking')
conflicts=('glib-networking')
options=('!libtool')
install=glib-networking.install
source=("http://download.gnome.org/sources/glib-networking/2.28/glib-networking-${pkgver}.tar.bz2" "http://projects.archlinux.org/svntogit/packages.git/plain/glib-networking/trunk/glib-networking-2.29.9-port-gnutls3-API.patch")
sha256sums=('98bedfbd530c4b1b53c91025fe82290bafd289d249e4eb549c3b90d23a76021c' '101daf107773f84d08d7ab55a354875e2e021c3b5dd3cdc259fb544f94a8beee')
build() {
  cd "$srcdir/glib-networking-$pkgver"
  patch -Np0 -i $srcdir/glib-networking-2.29.9-port-gnutls3-API.patch
  ./configure \
    --prefix=/usr  --sysconfdir=/etc \
    --libexecdir=/usr/lib/glib-networking --disable-static \
    --without-gnome-proxy
  make
}

package() {
  cd "$srcdir/glib-networking-$pkgver"
  make DESTDIR="${pkgdir}" install
}

