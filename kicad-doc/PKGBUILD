#Contributor Pengyu <milkline@gmail.com>
pkgname=kicad-doc
pkgver=20110429
pkgrel=1
pkgdesc="Kicad user documentation"
arch=('i686' 'x86_64')
url="http://iut-tice.ujf-grenoble.fr/kicad/"
license=('GPL')
depends=()
makedepends=('cmake')
options=('docs')
source=(http://iut-tice.ujf-grenoble.fr/cao/docs_and_translations_kicad_2011-04-29.zip)
md5sums=('9b301ebe7b915d2df5296f06434d7c89')

build() {
cd ${srcdir}/doc
cmake ${srcdir}/doc -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr || return 1
make DESTDIR=${pkgdir} install || return 1
}
