#
# Makefile.WIN32
#
#
# If you compile, change the name to Makefile.in.
#
#
 
#-----------------------------------------------------------------------------
# Shell
#-----------------------------------------------------------------------------

SHELL = /bin/sh

#-----------------------------------------------------------------------------
# Platform
#-----------------------------------------------------------------------------

PLAT = WIN32

#-----------------------------------------------------------------------------
# Libraries and includs
#-----------------------------------------------------------------------------
 
#BLLIB = libblas.a
CBDIR = $(PWD)
CBLIBDIR = $(CBDIR)/lib
CBLIB = $(CBLIBDIR)/libcblas.a
CBSHLIB = $(CBLIBDIR)/libcblas.dll

#-----------------------------------------------------------------------------
# Compilers
#-----------------------------------------------------------------------------

CC = $(HOST)-gcc
FC = $(HOST)-gfortran
LOADER = $(FC)

#-----------------------------------------------------------------------------
# Flags for Compilers
#-----------------------------------------------------------------------------

CFLAGS = -O3 -DADD_
FFLAGS = -O3

#-----------------------------------------------------------------------------
# Archive programs and flags
#-----------------------------------------------------------------------------

ARCH = $(HOST)-ar
ARCHFLAGS = r
RANLIB = $(HOST)-ranlib
