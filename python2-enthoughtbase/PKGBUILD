# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-enthoughtbase
pkgver=3.1.0
_githubtag=e52d845
pkgrel=1
pkgdesc="Core packages for the Enthought Tool Suite"
arch=('any')
url="https://github.com/enthought/enthoughtbase"
license=('BSD')
depends=('python2')
makedepends=('python2-distribute')
conflicts=('python-enthought-utils' 'python2-enthoughtbase-git' 'python-ets-enthoughtbase-svn')
options=(!emptydirs)

source=("https://github.com/enthought/enthoughtbase/tarball/${pkgver}")
md5sums=('5e9f9f52349a21a596c6e91374a6241f')

build() {
  cd "$srcdir/enthought-enthoughtbase-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

