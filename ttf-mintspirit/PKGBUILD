# Maintainer: Dan Serban

pkgname=ttf-mintspirit
pkgver=alpha
pkgrel=1
depends=(fontconfig xorg-font-utils)
pkgdesc="A font made by the Linux Mint team"
arch=(any)
license=(custom)
url=http://www.linuxmint.com/
install=ttf-mintspirit.install

build()
{
  wget -O mint_spirit.zip "http://arkandis.tuxfamily.org/fonts/MintSpirit-Dev.zip"
  bsdtar -xf mint_spirit.zip
  chmod 644 */*/*.otf
  mkdir -p "${pkgdir}"/usr/share/fonts/TTF
  mv */*/*.otf "${pkgdir}"/usr/share/fonts/TTF/
}

