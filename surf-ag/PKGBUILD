pkgname=surf-ag
pkgver=1.0.5
pkgrel=2
pkgdesc="Visualization of real algebraic surfaces"
arch=('i686' 'x86_64')
url="http://surf.sf.net/"
license=('GPL')
depends=('gmp' 'gtk' 'libjpeg')
source=(http://puzzle.dl.sourceforge.net/sourceforge/surf/surf-$pkgver.tar.gz
        gcc44-patch)

build() {
  cd "$startdir/src/surf-$pkgver"
  patch -p1 <../gcc44-patch

  ./configure --prefix=/usr
  make || return 1 
  make check || return 1
  make install DESTDIR=$pkgdir || return 1
}

md5sums=('e19fbfdeffd60e8b178be89aeb43f7b1'
         '40cb8d8bcfe917cb8170541059426d02')
