# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-enable
pkgver=3.4.1
_githubtag=636ca99
pkgrel=1
pkgdesc="Drawing and interaction packages"
arch=('i686' 'x86_64')
url="https://github.com/enthought/enable"
license=('BSD')
depends=('python2' 'python2-numpy>=1.3.1' 'python-reportlab' 'libxt' 'libxtst'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('git' 'python2-distribute' 'gcc>=3.4' 'cython>=0.13' 'swig>=1.3.31')
conflicts=('python-enthought-enable' 'python2-enable-git' 'python-ets-enable-svn')
options=(!emptydirs)

source=("https://github.com/enthought/enable/tarball/${pkgver}")
md5sums=('e155a7aac9247bd2da3e59ce16ec4632')

build() {
  cd "$srcdir/enthought-enable-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

