pkgname=mplayer-vdpau-auto
pkgver=1.1
pkgrel=1
pkgdesc='Simple mplayer wrapper script that autodetects VDPAU relevant file types and passes the correct options on to mplayer for VDPAU decoding.'
arch=(any)
license=(GPL)
source=(mplayer-vdpau-auto.sh)
url=http://dev/null # :p
depends=('mplayer')
build() {
   install -D mplayer-vdpau-auto.sh $pkgdir/usr/bin/mplayer-vdpau-auto
}
sha256sums=('710e29340e814b03e2dc3f7af0b36f6ad8967f3f825d88b5eac1e63bcfb5e152')
