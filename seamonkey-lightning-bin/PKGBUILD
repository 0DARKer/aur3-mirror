# Based on PKGBUILD provided by
# Contributor: Joel Goguen <jgoguen (at-sign) jgoguen (period) ca>
# Maintainer: Hugo Osvaldo Barrera <hugo@osvaldobarrera.com.ar>
pkgname=seamonkey-lightning-bin
pkgver=2.1b1
pkgrel=1
pkgdesc="A version of Mozilla Sunbird integrated with Seamonkey"
arch=('i686' 'x86_64')
url="http://www.mozilla.org/projects/calendar/lightning/"
license=('MPL' 'GPL' 'LGPL')
depends=('seamonkey=2.16.2' 'libnotify')
makedepends=()
options=(!strip)
provides=(lightning=${pkgver})

source=(lightning-$pkgver.xpi::https://ftp.mozilla.org/pub/mozilla.org/calendar/lightning/nightly/${pkgver}-candidates/build1/linux/lightning-${pkgver}.en-US.linux.xpi)
sha1sums=('640168f064fbf6ddb54628cca404c99c5ea92c7a')

build() {
	mkdir -p ${pkgdir}/usr/lib/seamonkey-2.16.2/extensions/${pkgname}
	cd ${pkgdir}/usr/lib/seamonkey-2.16.2/extensions/${pkgname}
	bsdtar -x -f ${srcdir}/lightning-$pkgver.xpi

	_emid=$(grep em:id install.rdf | tail -n 1 | sed 's/.*>\(.*\)<.*/\1/')
	cd ../
	mv ${pkgname} ${_emid}
	cd ${_emid}

	# Fix permissions
	find -type d -exec chmod 0755 \{\} \+
	find -type f -exec chmod 0644 \{\} \+
	find -name '*.so' -exec chmod 0755 \{\} \+
}
