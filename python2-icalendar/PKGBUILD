# Contributor: xduugu

pkgname=python2-icalendar
pkgver=2.1
pkgrel=5
pkgdesc="A parser/generator of iCalendar files (RFC 2445)"
arch=('any')
url="http://pypi.python.org/pypi/icalendar/"
license=('GPL')
depends=('python2')
conflicts=('python-icalendar')
source=(http://pypi.python.org/packages/source/i/icalendar/icalendar-${pkgver}.tar.gz datetime-fix.patch)
md5sums=('110f0e2609b52e76689796dc1a7476d6'
         'fd184c3d964e92f2abbb4a54b004b440')
sha256sums=('7e0080cd5fbbdbe084087a5863c5419bbb889fcd3f5988f436c5b94b4fba4641'
            '5d5ec18c43b747a1ee036e410983a05f37454df7e18d45396a571cdce07ff6d0')

build() {
  cd "icalendar-${pkgver}"
  patch -p1 < ../datetime-fix.patch
  python2 setup.py install --root=${pkgdir} --optimize=1
}

