pkgname=python2-icalendar
_pkgname=icalendar
pkgver=3.8.2
pkgrel=1
pkgdesc='A parser/generator of iCalendar files (RFC 2445)'
arch=('any')
url='http://pypi.python.org/pypi/icalendar/'
license=('BSD')
depends=('python2' 'python2-pytz' 'python2-dateutil')
makedepends=('python2-distribute')
source=(http://pypi.python.org/packages/source/i/icalendar/icalendar-${pkgver}.tar.gz)
md5sums=('64a297859bff2d14efc50d2605d71a25')
sha256sums=('4252daaccabb4903c9d96397aa392ef58374c0f762b710e30de9c0a7cae3dcbb')

build() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py install --root="$pkgdir" --optimize=1
}

