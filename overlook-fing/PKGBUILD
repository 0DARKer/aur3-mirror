# Created: 08/12/2010
pkgname=overlook-fing
pkgver=1.4
_pkgver=1_4
pkgrel=1
pkgdesc='Fing is the ultimate tool for network discovery and scanning'
arch=('i686' 'x86_64')
url='http://www.over-look.com/'
license=('custom:Overlook Freeware license')
depends=('sh' 'zlib')
options=(!strip)
case $CARCH in
  i686)
    source=("${pkgname}-${pkgver}.tgz::http://www.over-look.com/site/index.php/fing-download-linux/32bit/117-${pkgname}-${_pkgver}/download")
  md5sums=('b26cd267c8ba8ca93223a195672e47f2')
    ;;
  x86_64)
    source=("${pkgname}-${pkgver}.tgz::http://www.over-look.com/site/index.php/fing-download-linux/64bit/113-${pkgname}-${_pkgver}/download")
   md5sums=('5d9f3c3f8f952ac5b7c72b2cecdd8629')
   ;;
esac

build() {
  cd "$srcdir"
  install -dm755 ${pkgdir}/ || return 1
  tar -c ./ --exclude ${pkgname}-${pkgver}.tgz | tar -C ${pkgdir}/ -x || return 1
  install -dm755 ${pkgdir}/usr/share/licenses/${pkgname} || return 1
  mv ${pkgdir}/usr/share/fing/doc/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE ||\
    return 1
  install -dm755 ${pkgdir}/etc/fing || return 1
  install -Dm644 ${pkgdir}/usr/share/fing/template/conf/* ${pkgdir}/etc/fing/ || return 1
}

# vim:set ts=2 sw=2 et ft=sh tw=100:
