# Maintainer: Edoardo Maria Elidoro <edoardo.elidoro@gmail.com>

pkgname=fuzzy-window-switcher-git
_gitname=fuzzy-window-switcher
pkgver=55c6659
pkgrel=1
pkgdesc="A fuzzy window switcher inspired by Sublime Text's Ctrl+P."
arch=('any')
url="https://github.com/XCMer/fuzzy-window-switcher"
license=('GPL')
depends=(gtk3 libkeybinder3 python)
makedepends=(git)
source=(git://github.com/XCMer/fuzzy-window-switcher.git)
md5sums=(SKIP)

pkgver(){
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

package() {
  cd $_gitname
  install -Dm 755 "$srcdir/$_gitname/fuzzy-windows" "$pkgdir/usr/bin/fuzzy-windows"
  }
