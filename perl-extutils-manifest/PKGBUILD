# File bugs @ http://github.com/xenoterracide/AURpan/issues

pkgname='perl-extutils-manifest'
pkgver='1.58'
pkgrel='2'
pkgdesc="Utilities for managing MANIFEST files"
arch=('any')
url='http://search.cpan.org/dist/ExtUtils-Manifest'
license=('PerlArtistic' 'GPL')
depends=('perl')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/R/RK/RKOBES/ExtUtils-Manifest-1.58.tar.gz')
md5sums=('1644112b9ac75822d820b047c968edd9')

build() {
  DIST_DIR="${srcdir}/ExtUtils-Manifest-1.58"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

