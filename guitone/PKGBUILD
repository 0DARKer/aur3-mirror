# Maintainer: skydrome <irc.freenode.net/#archlinux>
# Contributor: Gour <gour@gour-nitai.com>
pkgname=guitone
pkgver=1.0rc5
pkgrel=1
pkgdesc="qt frontend for monotone"
url="https://guitone.thomaskeller.biz"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('monotone>=0.99.1' 'qt>=4.6.0')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://guitone.thomaskeller.biz/count.php/from=default/${pkgver}/${pkgname}-${pkgver}.tgz)
md5sums=('3f27c55d1ec3d4c75a566e0b3c88af8a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  qmake guitone.pro PREFIX=/usr || return 1
  make || return 1
  make INSTALL_ROOT=${pkgdir} install
}
