# Contributor: Changaco <changaco ατ changaco δοτ net>

pkgname=nosudo
pkgver=0.4
pkgrel=2
pkgdesc="A simple script to replace sudo with su -c"
url='https://github.com/Changaco/nosudo'
arch=('any')
license=('GPL')
replaces=('sudo')
provides=('sudo')
conflicts=('sudo')
source=("https://raw.github.com/Changaco/nosudo/745bfffbcaff2fd6c3fbaeb1b863d91af6ae3d2c/nosudo")
sha1sums=('57b0f941e654b0036b23a2d8e7245a9d1685462c')

package() {
	mkdir -p "$pkgdir/usr/bin"
	install -m 755 "$srcdir/$pkgname" "$pkgdir/usr/bin/sudo"
}
