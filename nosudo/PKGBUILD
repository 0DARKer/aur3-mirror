# Contributor: Changaco <changaco ατ changaco δοτ net>

pkgname=nosudo
pkgver=0.3
pkgrel=2
pkgdesc="A simple script to replace sudo with su -c"
url='http://www.changaco.net/code/nosudo/'
arch=('any')
license=('GPL')
replaces=('sudo')
provides=('sudo')
conflicts=('sudo')
source=("http://www.changaco.net/code/$pkgname/$pkgname")
md5sums=('028505e48bc4153f2edcea02877d4c41')

build() {
	mkdir -p "$pkgdir/usr/bin"
	install -m 755 "$srcdir/$pkgname" "$pkgdir/usr/bin/sudo"
}
