# Maintainer: Adrian Sampson <adrian@radbox.org>

python=python2

pkgname=beets
pkgver=1.0b9
pkgrel=1
pkgdesc="flexible music library manager and tagger"
depends=('python2-munkres' 'python-musicbrainz2' 'mutagen'
         'python2-distribute' 'python-unidecode')
arch=('any')
source=(http://pypi.python.org/packages/source/b/beets/beets-$pkgver.tar.gz)
md5sums=(94ecc87c6fefd93fcb7c77f68c3f3ac3)
url="http://beets.radbox.org/"
license="MIT"

build() {
  cd $srcdir/$pkgname-$pkgver
  $python setup.py build || return 1
  $python setup.py install --root=$pkgdir
}
