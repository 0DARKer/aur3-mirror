# Contributor: 
pkgname=xtreemfs
pkgver=1.4
pkgrel=1
pkgdesc="A distributed and replicated file system for the Internet" 
url="http://www.xtreemfs.org" 
license="BSD" 
arch=(i686 x86_64)
depends=('python' 'boost-libs' 'fuse' 'openssl' 'attr') 
makedepends=('cmake')

_pkgname=XtreemFS
source=("http://xtreemfs.googlecode.com/files/$_pkgname-$pkgver.tar.gz")

build() { 
	cd $startdir/src/$_pkgname-$pkgver || return 1
	make all || return 1
    make DESTDIR="$pkgdir/" install || return 1
}

md5sums=('17ca498c8011ff8777b2e090ad460a79')
