# Maintainer: Ner0

pkgname=nitrotasks
pkgver=1.2.3
pkgrel=1
pkgdesc="An eyecandy task managment tool"
arch=('any')
url="http://nitrotasks.com/"
license=('BSD')
depends=('pygtk' 'python2' 'python2-gobject2' 'pywebkitgtk')
makedepends=('python-distutils-extra' 'intltool')
source=("https://launchpad.net/${pkgname}/trunk/${pkgver}/+download/${pkgname}_${pkgver}.tar.gz")
md5sums=('d327c8c56a3edfbecc286ad99d38fc7d')

package() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir/" --optimize=1

  find "$pkgdir/" -type f -not -name nitrotasks -exec chmod 644 '{}' \;
}
