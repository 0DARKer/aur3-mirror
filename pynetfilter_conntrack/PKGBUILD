pkgname=pynetfilter_conntrack
pkgver=0.4.2
pkgrel=1
pkgdesc="pynetfilter_conntrack is a Python binding of libnetfilter_conntrack. The binding is the file pynetfilter_conntrack.py and you have also a clone of conntrack program: conntrack.py."
arch=('i686' 'x86_64')
url="http://software.inl.fr/trac/wiki/pynetfilter_conntrack"
license=('GPL')
groups=()
depends=('libnetfilter_conntrack>=0.0.75' 'python' 'python-ipy')
makedepends=('python')
source=(http://cheeseshop.python.org/packages/source/p/$pkgname/$pkgname-0.4.2.tar.gz)
md5sums=('78be53e165f5851b31d2cbea4c8bd3f2')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root=$pkgdir || return 1
}

