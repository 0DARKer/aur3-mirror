# Contributor Madek <gonzaloseguel@gmail.com>

pkgname=indicator-popper
pkgver=0.23
pkgrel=1
arch=('any')
pkgdesc="Mail checker for indicator"
url="http://launchpad.net/popper"
license=('GPL')
depends=('indicator-messages')
makedepends=('libtool' 'intltool')
replaces=()
conflicts=()
provides=()
source=(http://launchpad.net/popper/trunk/zero/+download/popper_023.deb)
md5sums=('e26caa2ebcaf2722a0fb06120bdbc33c')

build() {
deb2targz popper_023.deb
tar xzf popper_023.tar.gz
find . -name popper.sh -exec sed -i 's/python /python2 /g' {} \;
find . -name popper_config.sh -exec sed -i 's/python /python2 /g' {} \;
cp -r usr/ ${pkgdir}/usr
chmod 755 ${pkgdir}/usr
chmod 755 ${pkgdir}/usr/share
chmod 755 ${pkgdir}/usr/share/applications
}
