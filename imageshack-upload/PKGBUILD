pkgname=imageshack-upload
pkgver=0.3
pkgrel=1
pkgdesc="Bash script for uploading images to imageshack.us"
arch=('any')
url="https://github.com/cota/imageshack-upload"
license=('GPL')
depends=('curl')
source=("${pkgname}-${pkgver}.zip"::"https://github.com/cota/imageshack-upload/zipball/0.3")
md5sums=('3d5a5ad4c24604bb5b3cb5fffb34d154')

package() {
  cd "${srcdir}"/cota-${pkgname}-09a46a1
  install -Dm755 imageshack-upload "${pkgdir}"/usr/bin/imageshack-upload
}
