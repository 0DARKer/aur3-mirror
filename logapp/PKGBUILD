# Maintainer: Martin Striz <ms@poruba.net>

pkgname=logapp
pkgver=0.4
pkgrel=1
pkgdesc="Text output coloring utility"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/logapp"
license=('GPL')
depends=(glibc)
source=(http://dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('0ebc83305204f6f204d7ca3b27f60759')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  make DESTDIR=$startdir/pkg/usr/bin/ install
  make DESTDIR=$startdir/pkg/usr/bin/ install_links
  install -D -m0644 example.conf $startdir/pkg/etc/logapp/example.conf
}
