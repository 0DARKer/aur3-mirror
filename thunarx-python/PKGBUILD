pkgname=thunarx-python
pkgver=0.2.3
pkgrel=1
pkgdesc="Thunarx Python Bindings"
arch=('i686' 'x86_64')
url="http://rabbitvcs.org/"
depends=('python2' 'thunar>=0.4.0' 'pygtk>=2.6.0' 'pygobject>=2.6.0' 'gnome-python>=2.12.0')
license=('GPL')

source=(http://archive.xfce.org/src/bindings/thunarx-python/0.2/${pkgname}-${pkgver}.tar.bz2 python2.patch)
md5sums=('6154df9ab701ec3aba6de251011a3d00 6144a91d626ad14b52723edc471369c2')

build(){
	cd ${srcdir}/${pkgname}-${pkgver}
	patch -p1 -i $srcdir/python2.patch || return 1 
    PYTHON=python2 ./configure
    make || return 1
	make DESTDIR=${pkgdir} install || return 1
}
