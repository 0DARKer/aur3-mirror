pkgname=sleep
pkgver=0.0.2
pkgrel=2
url=("http://check-the-PKGBUILD.org")
pkgdesc="Sleep daemon for synchronizing br2684ctl, network and ppp in rc.conf for PPPoA connections"
license=('GPL')
arch=('i686' 'x86_64')
depends=()
makedepends=()
source=(sleep)
md5sums=('3c0d62b7b9f1d9c120814e7b9fab2b20')

build() {
  install -m 755 -D $startdir/sleep $startdir/pkg/etc/rc.d/sleep
}
