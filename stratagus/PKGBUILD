# Contributor: Angelo Theodorou <encelo@users.sourceforge.net>
pkgname=stratagus
pkgver=2.2.5.5
pkgrel=1
pkgdesc="A free cross-platform real-time strategy gaming engine"
arch=('i686' 'x86_64')
url="https://launchpad.net/stratagus"
license=('GPL')
depends=('gcc-libs' 'bzip2' 'libgl' 'sdl' 'libpng' 'libmng' 'libvorbis' 'libtheora' 'libmikmod' 'lua')
makedepends=('autoconf' 'automake')
source=(http://launchpad.net/stratagus/trunk/$pkgver/+download/stratagus_$pkgver.orig.tar.gz)
md5sums=('046befa41e564e5156def4ef44decdce')


build() {
  cd $srcdir/$pkgname-$pkgver

  ./autogen.sh
  ./configure --prefix=/usr --with-opengl
  make || return 1
  mkdir -p $pkgdir/usr/bin
  make PREFIX=$pkgdir/usr install
}
