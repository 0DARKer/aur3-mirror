# Maintainer: Dan Serban
# Contributor: Fabio Volpe

pkgname=pymunk
pkgver=2.0.0
pkgrel=1
pkgdesc="A wrapper around the 2d physics library Chipmunk"
arch=(i686 x86_64)
url=http://code.google.com/p/pymunk/
license=MIT
depends=(python2)
makedepends=(gcc)
source=("http://pymunk.googlecode.com/files/pymunk-${pkgver}.zip")
md5sums=('850615bae6990d5c39d530f45d1eed29')

build()
{
  cd pymunk-${pkgver}
# rm pymunk/*.so pymunk/*.dll
  rm pymunk/*.dll
# python2 setup.py build_chipmunk
  python2 setup.py build
  python2 setup.py install --root="${pkgdir}"
}

