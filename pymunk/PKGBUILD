# Maintainer: Dan Serban (dserban01 => gmail)
# Contributor: Fabio Volpe <volpefabio@gmail.com>
pkgname=pymunk
pkgver=1.0.0
pkgrel=2
pkgdesc="pymunk is a wrapper around the 2d physics library Chipmunk"
arch=('i686')
url="http://code.google.com/p/pymunk/"
license=('MIT')
depends=('python2')
makedepends=('gcc')
source=(http://pymunk.googlecode.com/files/$pkgname-$pkgver.zip)
md5sums=('e303c3eb2f65b745e5ccef5faa08ecdd')

build() {
  cd "$startdir/src/$pkgname-$pkgver"
  rm $startdir/src/pymunk-$pkgver/pymunk/*.so
  python2 setup.py build_chipmunk
  python2 setup.py build
  python2 setup.py install --root=$pkgdir
  # rm $pkgdir/usr/lib/python*/site-packages/pymunk/libchipmunk64.so
  mkdir -p $pkgdir/usr/share/licenses/pymunk
  cp LICENSE.txt $pkgdir/usr/share/licenses/pymunk/LICENSE
}
