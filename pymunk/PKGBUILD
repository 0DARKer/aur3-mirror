# Maintainer: Dan Serban (dserban01 => gmail)
# Contributor: Fabio Volpe <volpefabio@gmail.com>

pkgname=pymunk
pkgver=1.0.0
pkgrel=3
pkgdesc="A wrapper around the 2d physics library Chipmunk"
arch=(i686 x86_64)
url=http://code.google.com/p/pymunk/
license=MIT
depends=(python2)
makedepends=(gcc)
source=("http://pymunk.googlecode.com/files/${pkgname}-${pkgver}.zip")
md5sums=('e303c3eb2f65b745e5ccef5faa08ecdd')

build()
{
  cd "$srcdir/${pkgname}-${pkgver}"
  rm pymunk/*.so pymunk/*.dll
  python2 setup.py build_chipmunk
  python2 setup.py build
  python2 setup.py install --root="$pkgdir"
  mkdir -p "$pkgdir/usr/share/licenses/pymunk"
  cp LICENSE.txt "$pkgdir/usr/share/licenses/pymunk/LICENSE"
}
