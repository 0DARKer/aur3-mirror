# Contributor: Nezmer <Nezmer@allurelinux.org>

pkgname=kid3-qt
pkgver=1.5
pkgrel=1
pkgdesc="An MP3, Ogg/Vorbis and FLAC tag editor (without KDE dependencies)"
arch=('i686' 'x86_64')
url="http://kid3.sourceforge.net"
license=('GPL')
depends=('id3lib' 'tunepimp' 'docbook-xsl' 'qt')
makedepends=()
source=(http://downloads.sourceforge.net/sourceforge/kid3/kid3-$pkgver.tar.gz)
md5sums=('a36b570cf981ab15595db50a67d4fd0f')

build() {
  cd "${srcdir}/kid3-$pkgver/$pkgname"
  ./configure --without-kde --without-arts --prefix=/usr --with-xsl-stylesheet='/usr/share/xml/docbook/xsl-stylesheets-1.75.2/html/docbook.xsl'
  make || return 1
  make INSTALL_ROOT=${pkgdir} install
 }
