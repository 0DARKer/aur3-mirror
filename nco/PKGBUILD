pkgname=nco
pkgver=4.0.7
pkgrel=1
pkgdesc="netCDF Operators allow users to manipulate and analyse data stored in NetCDF files"
url="http://nco.sourceforge.net/"
license="GPL"
depends=('netcdf' 'udunits2' 'gsl' )
makedepends=('netcdf' 'udunits2' 'gsl' 'antlr2')
arch=('i686' 'x86_64')
options=('!libtool')
source=(http://nco.sourceforge.net/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('6bb578aea7f30ebfa1a4ee640e4721d1')

build() {
    cd "$srcdir"/$pkgname-$pkgver
    ./configure --prefix=/usr --enable-netcdf-4 \
                --enable-udunits2 --enable-optimize-custom || return 1
    make || return 1
}
package() {
    cd "$srcdir"/$pkgname-$pkgver
    make DESTDIR="$pkgdir" install install-html || return 1
}
# vim:set ts=4 sw=4 et:
