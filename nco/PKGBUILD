pkgname=nco
pkgver=4.0.9
pkgrel=3
pkgdesc="command-line operators to analyze and mnipulate netCDF files"
url="http://nco.sourceforge.net/"
license=('GPL3' 'FDL1.3')
depends=('netcdf' 'udunits' 'gsl' )
makedepends=('antlr2')
arch=('i686' 'x86_64')
options=('!libtool' '!makeflags')
source=(http://nco.sourceforge.net/src/${pkgname}-${pkgver}.tar.gz)
install=$pkgname.install

build() {
    cd $pkgname-$pkgver
    NETCDF_INC="$(nc-config --includedir)" NETCDF4_ROOT="$(nc-config --prefix)" \
    ./configure --prefix=/usr --enable-netcdf4
    make
}

package() {
    cd $pkgname-$pkgver
    make DESTDIR="$pkgdir" install install-html
}
md5sums=('83985751f0db7b48a40280ee8c650321')
