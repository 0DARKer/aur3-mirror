pkgname=nco
pkgver=4.0.9
pkgrel=1
pkgdesc="command-line operators to analyze and mnipulate netCDF files"
url="http://nco.sourceforge.net/"
license=('GPL3' 'FDL1.3')
depends=('netcdf' 'udunits' 'gsl' )
makedepends=('antlr2')
arch=('i686' 'x86_64')
options=('!libtool' '!makeflags')
source=(http://nco.sourceforge.net/src/${pkgname}_${pkgver}.orig.tar.gz)
install=$pkgname.install

build() {
    cd $pkgname-$pkgver
    ./configure --prefix=/usr \
                --enable-netcdf4 \
                --enable-gsl \
                --enable-ncoxx \
                --enable-udunits2
    make
}

package() {
    cd $pkgname-$pkgver
    make DESTDIR="$pkgdir" install install-html
}
md5sums=('13ac2118cda3ce0d38aaf9f4d6858933')
