# Maintainer:  Frank Sch√§ffer <frank.schaeffer@o2online.de>
pkgname=nco
pkgver=4.0.6
pkgrel=1
pkgdesc="The netCDF Operators, or NCO, are a suite of programs known as operators, operating on NetCDF data files"
url="http://nco.sourceforge.net/"
license="GPL"
depends=('netcdf' 'udunits2' 'gsl' )
makedepends=('netcdf' 'udunits2' 'gsl' 'antlr2')
provides=()
conflicts=()
replaces=()
backup=()
install=
arch=('i686' 'x86_64')
options=('!libtool')
source=(http://nco.sourceforge.net/src/${pkgname}-${pkgver}.tar.gz)
md5sums=('bc8e8dd6994d415ccc7593524d007052')

build() {
  cd "$srcdir"/$pkgname-$pkgver/
  ./configure --prefix=/usr --enable-netcdf-4 --enable-udunits2 --enable-optimize-custom
  make || return 1
}
package() {
  cd "$srcdir"/$pkgname-$pkgver/
  make DESTDIR="$pkgdir" install install-html || return 1
}
# vim:set ts=2 sw=2 et:
