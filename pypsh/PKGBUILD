# Maintainer: Mathias Fussenegger <f.mathias <รฆลง> zignar DOT net>

pkgname=pypsh
pkgver=0.6.0
pkgrel=1
pkgdesc="cli for parallel ssh command execution on all known_hosts that match a given regex"
url="https://github.com/mfussenegger/pypsh"
source=("https://github.com/mfussenegger/pypsh/archive/0.6.0.tar.gz")
depends=('python2-paramiko'
         'python2-crypto'
         'python2-termcolor'
         'python2-argh')
makedepends=('python2-distribute')
license=('MIT')
arch=('any')
md5sums=('2fae3df7cc98c35790c167c846ec5e88')

build() {
    cd "${srcdir}/pypsh-${pkgver}"
    python2 setup.py build
}

package() {
    cd "${srcdir}/pypsh-${pkgver}"
    python2 setup.py install --root="${pkgdir}"
}
