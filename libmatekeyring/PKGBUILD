pkgname=libmatekeyring
pkgver=2011.12.16
pkgrel=1
pkgdesc="MATE keyring client library"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('libgcrypt') # 'eggdbus' 'mate-keyring'
makedepends=('intltool' 'pkgconfig' 'python')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://matsusoft.com.ar/projects/mate/"
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('54631e60cede2edca4a7aca1607707601f0fc753bd2718c3016ce458e3d41e71')

build() {
    cd "${srcdir}"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --libexecdir=/usr/lib/mate-keyring || return 1

    make || return 1
}

package() {
    cd "${srcdir}"

    make DESTDIR="${pkgdir}" install || return 1
}
