# Contributor: m0rph < m0rph.mailbox (at) gmail.com >

pkgname=mytetra
pkgver=1.28
pkgrel=2
pkgdesc='Smart manager for information collecting'
arch=('i686' 'x86_64')
url='http://webhamster.ru/site/page/index/articles/projectcode/105'
license=('GPL3')
depends=('qt' 'ppl')
makedepends=('make')
source=('http://webhamster.ru/db/data/articles/105/mytetra_1_28_src.zip')
md5sums=('74d1dc3af83e9bb57b1e402860d596e4')

build() {
  cd "${srcdir}/mytetra_1_28_src" || return 1

  qmake || return 1

  msg "Starting make..."
  make || return 1
}

package() {
  cd "${srcdir}/mytetra_1_28_src" || return 1

  msg "Installing to package directory..."
  make INSTALL_ROOT="${pkgdir}" install || return 1
}
