# Contributor: Martin Tuma <tumic@tumic.wz.cz>

pkgname=hypercube
pkgver=0.9.0
pkgrel=1
pkgdesc="Graph visualizing tool"
url="http://tumic.wz.cz/hypercube"
arch=('i686' 'x86_64')
license=('GPL')
depends=('qt')
source=('http://tumic.wz.cz/hypercube/data/hypercube-0.9.0.tar.gz')
md5sums=('6992f5a9b49f745df0c395e4ca5886ba')

build() {
  cd $srcdir/$pkgname-$pkgver
  qmake hypercube.pro
  make
  strip hypercube
  make clean
  qmake hypercube-cli.pro
  make
  strip hypercube-cli
}

package() {
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/bin
  cp $srcdir/$pkgname-$pkgver/hypercube $pkgdir/usr/bin/hypercube
  cp $srcdir/$pkgname-$pkgver/hypercube-cli $pkgdir/usr/bin/hypercube-cli
}
