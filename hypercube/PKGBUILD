# Contributor: Martin Tuma <tumic@tumic.wz.cz>

pkgname=hypercube
pkgver=0.8
pkgrel=1
pkgdesc="Graph visualizing tool"
url="http://tumic.wz.cz/hypercube"
arch=('i686' 'x86_64')
license=('GPL')
depends=('qt')
source=('http://tumic.wz.cz/hypercube/data/hypercube-0.8.tar.gz')
md5sums=('2455d5fcac2a918b995624a947e4fd00')

build() {
  cd $srcdir/$pkgname-$pkgver
  qmake hypercube.pro
  make
  strip hypercube
  make clean
  qmake hypercube-cli.pro
  make
  strip hypercube-cli
}

package() {
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/bin
  cp $srcdir/$pkgname-$pkgver/hypercube $pkgdir/usr/bin/hypercube
  cp $srcdir/$pkgname-$pkgver/hypercube-cli $pkgdir/usr/bin/hypercube-cli
}
