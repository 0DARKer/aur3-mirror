#Maintainer: Jarred Leonardo <jarredleonardo at googlemail dot com>

pkgname=xcur2png
pkgver=0.7
pkgrel=1
pkgdesc="Convert X cursors to PNG images."
arch=(i686 x86_64)
url="http://linux.softpedia.com/get/Multimedia/Graphics/Xcur2png-42642.shtml"
license=('GPL')
depends=(libpng libxcursor)
source=("http://www.sutv.zaq.ne.jp/linuz/tks/item/xcur2png-0.7.0.tar.gz")
md5sums=('21e06628bbc305fed937eb94a688021a')

build() {
	cd $srcdir/xcur2png-0.7.0
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
}