# Contributor: Matteo Agostinelli <matteo@agostinelli.me>
pkgname=dpic
pkgver=20120620
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64' 'i686')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
source=('http://www.ece.uwaterloo.ca/~aplevich/dpic/dpic-2012.06.20.tar.gz')
md5sums=('dedc641f2ad70fcd1ce848228198f8bd')

build() {
  cd "$srcdir/$pkgname"
  make || return 1
}

package() {
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/bin

  mv dpic/dpic $pkgdir/usr/bin
}
