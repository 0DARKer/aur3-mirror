# Contributor: Matteo Agostinelli <matteo@agostinelli.me>
pkgname=dpic
pkgver=20111209
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64' 'i686')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
source=('http://www.ece.uwaterloo.ca/~aplevich/dpic/dpic-2011.12.09.tar.gz')
md5sums=('697642e2a1504608fef1b42a91344641')

build() {
  cd "$srcdir/$pkgname"
  make || return 1
  make DESTDIR=$pkgdir/usr install || return 1
}

package() {
  mkdir -p $pkgdir/usr/share/man/man1

  mv dpic/doc/dpic.1 $pkgdir/usr/share/man/man1
}
