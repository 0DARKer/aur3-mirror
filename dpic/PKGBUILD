# Contributor: Matteo Agostinelli <matteo@agostinelli.me>
pkgname=dpic
pkgver=20120207
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64' 'i686')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
source=('http://www.ece.uwaterloo.ca/~aplevich/dpic/dpic-2012.02.07.tar.gz')
md5sums=('74be6385b2d269328f790444f445e95a')

build() {
  cd "$srcdir/$pkgname"
  make || return 1
}

package() {
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/bin

  mv dpic/dpic $pkgdir/usr/bin
}
