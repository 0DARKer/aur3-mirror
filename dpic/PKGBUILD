# Contributor: Matteo Agostinelli <matteo@agostinelli.me>
pkgname=dpic
pkgver=20120423
pkgrel=2
pkgdesc="A pic language interpreter"
arch=('x86_64' 'i686')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
source=('http://www.ece.uwaterloo.ca/~aplevich/dpic/dpic-2012.04.23.tar.gz')
md5sums=('bc3c534510944602ceb52cf520f48653')

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  mkdir -p $pkgdir/usr/share/man/man1
  mv dpic/doc/dpic.1 $pkgdir/usr/share/man/man1

  cd "$srcdir/$pkgname"
  make DESTDIR=$pkgdir/usr install
}
