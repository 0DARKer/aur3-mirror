# Contributor: Matteo Agostinelli <matteo@agostinelli.me>
pkgname=dpic
pkgver=20130310
pkgrel=1
pkgdesc="A pic language interpreter"
arch=('x86_64' 'i686')
url="http://www.ece.uwaterloo.ca/~aplevich/dpic/"
license=('BSD')
makedepends=('gcc')
source=('http://www.ece.uwaterloo.ca/~aplevich/dpic/dpic-2013.03.10.tar.gz')
md5sums=('5213d6e4fe273aa62370593fcf597f06')

build() {
  cd "$srcdir/$pkgname"
  make || return 1
}

package() {
  mkdir $pkgdir/usr
  mkdir $pkgdir/usr/bin

  mv dpic/dpic $pkgdir/usr/bin
}
