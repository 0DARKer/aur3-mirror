# Maintainer: Hakan Erduman <hakan@erduman.de>
pkgname=xfce4-hamster-plugin
pkgver=1.1
pkgrel=2
pkgdesc="A recreation of the gnome-shell hamster extension as a xfce4 panel plugin."
url="https://github.com/aquaherd/${pkgname}"
groups=('xfce-goodies')
arch=('x86_64' 'i686')
license=('GPL2')
depends=('xfce4-panel' 'libxfcegui4' 'hamster-time-tracker')
makedepends=('pkgconfig' 'intltool')
replaces=('xfce4-hamster-plugin')
backup=()
source=("https://github.com/aquaherd/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('e7aa5eed2636ea947edb74ba34666aac')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./autogen.sh
  ./configure --prefix=/usr --enable-silent-rules -silent
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 et:
