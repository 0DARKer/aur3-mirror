# Maintainer: Perttu Ahola <gmail/celeron55>

pkgname=libarea-svn
pkgver=53
pkgrel=1
pkgdesc="CNC Toolpath Generating Library for Pocketing"
arch=('i686' 'x86_64')
url="http://code.google.com/p/libarea/"
license=('GPL3')
makedepends=('subversion' 'python')
depends=('python')
provides=('libarea')
conflicts=('libarea')
source=('00-CHANGEABLE_PREFIX.patch' '00-SITEPACKAGES.patch')
md5sums=('9aca56f92a51d5eb005d9f59f6ea3078'
         'fb39cbe201c15ccee3ac2e32b6684f79')

_svntrunk=http://libarea.googlecode.com/svn/trunk
_svnmod=libarea-read-only

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD
  #
  
  patch -p0 < ../../00-CHANGEABLE_PREFIX.patch || return 1
  patch -p0 < ../../00-SITEPACKAGES.patch || return 1

  make || return 1
  make install DESTDIR=$pkgdir PREFIX=/usr || return 1
}
