# Contributor: Bryce Nordgren <bnordgren at fs dot fed dot us>

pkgname=mysql-connector-j
pkgver=5.1.16
pkgrel=1
pkgdesc="Mysql Connector/J is a native Java driver that converts JDBC calls into the network protocol used by the Mysql database."
arch=('any')
url="http://dev.mysql.com/downloads/connector/j"
license=('GPL2')
groups=()
depends=(java-runtime)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=( http://mirror.services.wisc.edu/mysql/Downloads/Connector-J/mysql-connector-java-$pkgver.tar.gz )
md5sums=('40de5aa669643bf250e03798abf919f0')

package() {
  #
  # Move the jar to the appropriate java library directory
  #
  mkdir -p $pkgdir/usr/share/java/mysql-connector-j
  stem=mysql-connector-java-$pkgver
  mv $srcdir/$stem/$stem-bin.jar \
     $pkgdir/usr/share/java/mysql-connector-j
}

