# Maintainer: Hubert Star <hubertstar at gmail dot com>

pkgname=yong-lin
pkgver=1.1.9
pkgrel=3
pkgdesc="A Chinese Input Method of X (not opensource, )."
arch=("i686" "x86_64")
url="http://www.linuxsir.org/bbs/thread348583-3.html"
depends=('libxft' 'libxpm')
license=('other')
source=(http://cloud.github.com/downloads/dgod/yong/${pkgname}-${pkgver}-${pkgrel}.7z)
md5sums=('e5b4bb74daf16c67a46b32cfcc525200')

[ "$CARCH" = "x86_64" ] && source=(http://cloud.github.com/downloads/dgod/yong/${pkgname}-${pkgver}-${pkgrel}.x64.7z)
[ "$CARCH" = "x86_64" ] && md5sums=('d3bc54a0fe90618c3ab128d4e10c642e')


build() {
	cd $srcdir
	7z x ${pkgname}-${pkgver}-${pkgrel}*.7z
    cd $srcdir/yong
	mkdir -p $pkgdir/usr/bin
	mkdir -p $pkgdir/usr/lib/yong
	mkdir -p $pkgdir/usr/share/locale/zh_CN/LC_MESSAGES
	mkdir -p $pkgdir/usr/share/yong
	
	cp yong yong-setup $pkgdir/usr/bin
	cp libgbk.so libmb.so $pkgdir/usr/lib/yong
	cp bihua.bin mb skin yong.ini yong.xml $pkgdir/usr/share/yong -r
}
