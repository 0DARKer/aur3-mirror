pkgname=aurup
pkgver=0.7.8
pkgrel=1
pkgdesc="A command line tool to upload AUR packages"
arch=('i686' 'x86_64')
url="http://pierloz.com/Aurup"
license=('GPL')
depends=('sh' 'html2text' 'links' 'curl')
source=('aurup')
md5sums=('f594c2220a5cceb3b6019402c61be6d2')
build() {
  mkdir -p $startdir/pkg/usr/bin
  install -m755 $startdir/src/aurup $startdir/pkg/usr/bin
}
