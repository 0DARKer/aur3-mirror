# Contributor: Pete Morris <pete dot morris at gmail>
pkgname=perl-text-vimcolor
pkgver=0.11
pkgrel=1
pkgdesc="Syntax color text in HTML or XML using Vim"
arch=('any')
url="http://search.cpan.org/~geoffr/Text-VimColor/"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-path-class')
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/G/GE/GEOFFR/Text-VimColor-$pkgver.tar.gz)
md5sums=('268fb3f630b463fcec528d798dcf77c3')

build() {
  cd "$srcdir/Text-VimColor-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name perllocal.pod -delete
  find "$pkgdir" -name .packlist -delete
}

# vim:set ts=2 sw=2 et:
