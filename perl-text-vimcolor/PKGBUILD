# Contributor: Pete Morris <pete dot morris at gmail>

_perlmod=Text-VimColor
pkgname=perl-text-vimcolor
pkgver=0.18
pkgrel=1
pkgdesc="Text::VimColor - Syntax highlight text using Vim"
arch=('any')
url="http://search.cpan.org/dist/$_perlmod"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-path-class>=0.04' 'perl-file-sharedir')
makedepends=('perl-file-sharedir-install>=0.03')
options=('!emptydirs')
source=("http://cpan.perl.org/modules/by-module/Text/$_perlmod-$pkgver.tar.gz")
sha512sums=('0c2a3efd7dd251e75c3551e3bfeea617ffb93f15d8a4b389e970166fb56f97243dfc53bc5da393894281b8ae183f30a61eced683072cc8fb580db34471bbe431')

build() {
  cd "$srcdir/$_perlmod-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/$_perlmod-$pkgver"
  make test
}

package() {
  cd "$srcdir/$_perlmod-$pkgver"
  make install DESTDIR="$pkgdir/"
}

