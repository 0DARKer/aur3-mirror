# Contributor: Pete Morris <pete dot morris at gmail>

pkgname=perl-text-vimcolor
_pkgname=Text-VimColor
pkgver=0.17
pkgrel=1
pkgdesc="Text::VimColor - Syntax highlight text using Vim"
arch=('any')
url="http://search.cpan.org/dist/$_pkgname"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-path-class')
makedepends=('perl-file-sharedir-install')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/R/RW/RWSTAUNER/$_pkgname-$pkgver.tar.gz)
sha512sums=('045d9f760630b4219e1ccc1e8b4dd0f63b4a170b66625325e44856aaeb9a96516e04d89311c3f10fc5c308a1727a40d47583761ecfbdeb80ef1f371501532ba2')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  make install DESTDIR="$pkgdir/"
}

