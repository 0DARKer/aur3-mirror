# Maintainer: grimi <grimi at poczta dot fm>

pkgname=mediterraneannight-theme
pkgver=1.0
pkgrel=2
pkgdesc="A gtk3, gtk2, metacity and unity theme (variation of 'Adwaita cupertino')."
arch=('any')
url="http://gnome-look.org/content/show.php/MediterraneanNight?content=148398"
license=('GPL')
depends=('gtk-engine-murrine' 'gtk-engine-unico')
source=("http://gnome-look.org/CONTENT/content-files/148398-MediterraneanNight.tar.gz")
md5sums=('fa9aa6836c48417f7f893a8f4ad57eff')


package() {
  find MediterraneanNight/*/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
}

