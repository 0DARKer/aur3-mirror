pkgname=flashplayer-64bits
pkgver=10.2
pkgrel=1
pkgdesc="Macromedia flash player 64 (nonfree)"
url="http://www.adobe.com/support/flashplayer/downloads.html"
license="custom"
depends=('curl' 'gtk2' 'libxdamage' 'libxt' 'nss')
source=("http://download.macromedia.com/pub/labs/flashplayer10/flashplayer10_2_p3_64bit_linux_111710.tar.gz")
arch=('x86_64')
md5sums=('49b55c7eb8044453e5f6f2e4b3cb4084')
options=(!strip)

build() {
  cd "${srcdir}"
  install -D -m755 libflashplayer.so "${pkgdir}/usr/lib64/mozilla/plugins/libflashplayer.so" || return 1
}
