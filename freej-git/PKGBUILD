# Contributor: fred_99 <bobrenard@free.fr>

pkgname=freej-git
pkgver=20101201
pkgrel=1
pkgdesc="FreeJ, an instrument for realtime video manipulation: latest from the git master branch."
arch=('i686' 'x86_64')
url="http://freej.dyne.org/"
license=('GPL3')
depends=('alsa-lib' 'ffmpeg' 'fftw' 'jack-audio-connection-kit' 'libjpeg' 'liblo' 'libpng' 'libtheora' 'libvorbis' 'sdl' 'slang' 'zip' 'libshout')
makedepends=('git' 'pkgconfig')
conflicts=('freej')

_gitroot="git://git.dyne.org/freej.git"
_gitname="freej"

build() {
  cd "$srcdir"
  if [[ -d $_gitname ]]; then
    cd $_gitname && git pull origin && cd ..
  else
    git clone $_gitroot
  fi

  [[ -d "$_gitname-build" ]] && rm -rf "$_gitname-build"
  git clone "$_gitname" "$_gitname-build"
  cd "$_gitname-build"
  ./autogen.sh
  ./configure --prefix=/usr --enable-static-mozjs \
    CXXFLAGS="-g -D__STDC_CONSTANT_MACROS" 
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
