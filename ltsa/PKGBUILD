# Contributor: catwell <catwell@archlinux.us>

pkgname=ltsa
pkgver=3.0
pkgrel=1
pkgdesc="Labelled Transition System Analyser, a verification tool for concurrent systems"
arch=('i686' 'x86_64')
url="http://www.doc.ic.ac.uk/~jnm/book/ltsa/download.html" 
license=('unknown')
depends=('java-runtime')
install=ltsa.install
source=(http://www.doc.ic.ac.uk/~jnm/book/ltsa/ltsatool.zip)
md5sums=(09afa4ffd87b1dfc4c84e1e20452ae09)

build() {
  cd ltsatool
  install -d $pkgdir/opt/ltsa $pkgdir/usr/bin
  cp -r *.jar Chapter_examples $pkgdir/opt/ltsa
  echo '#!/bin/sh'$'\n''java -jar /opt/ltsa/ltsa.jar' > $pkgdir/usr/bin/ltsa
  chmod 755 $pkgdir/usr/bin/ltsa
}
