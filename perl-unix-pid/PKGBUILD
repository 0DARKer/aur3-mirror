#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-unix-pid'
pkgver='0.22'
pkgrel='1'
pkgdesc='Perl extension for getting PID info.'
url='http://search.cpan.org/dist/Unix-PID/'
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
depends=('perl')
source=("http://search.cpan.org/CPAN/authors/id/D/DM/DMUEY/Unix-PID-${pkgver}.tar.gz")
sha256sums=('f2aa795cdcb15c6cc04728052c2ae65eb6e9de59a9f1124b2946f0cf3aefa884')

build() {
  cd "${srcdir}/Unix-PID-${pkgver}"

  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1

  make || return 1

  [ "$skiptest" = "1" ] || make test || return 1
}

package() {
  cd "${srcdir}/Unix-PID-${pkgver}"

  make DESTDIR="${pkgdir}" install || return 1

  find "${pkgdir}" -name '.packlist' -exec rm -f {} \;
  find "${pkgdir}" -name 'perllocal.pod' -exec rm -f {} \;
}
