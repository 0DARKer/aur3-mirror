pkgname=perl-unix-pid
_prename=Unix
_pkgname=Unix-PID
pkgver=0.23
pkgrel=1
pkgdesc='Perl extension for getting PID info.'
url='http://search.cpan.org/dist/Unix-PID/'
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
depends=('perl')
source=(http://search.cpan.org/CPAN/modules/by-module/${_prename}/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('f52617b55ecd4a2c93379228721c47cf129cf9ba94a62ac22409b6f0f5b2b4a8')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"

  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor

  make
}
check() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make test
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install

  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
