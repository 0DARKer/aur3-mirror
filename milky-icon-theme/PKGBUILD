pkgname=milky-icon-theme
_pkgname=milky
pkgver=2.0
pkgrel=1
pkgdesc="Icon theme for KDE4 from Pardus Linux."
arch=('any')
depends=('kdebase-workspace')
url="htt://www.pardus.org.tr/"
license=('Creative Commons')
source=(http://cekirdek.pardus.org.tr/~gokcen/files/milky/${_pkgname}-${pkgver}.tar.bz2)
sha256sums=('04d96cbcb7bf7b48fea30656a2e7213eff73e17616953843cb3d0fd857ebd382')

build() {
    install -d "${pkgdir}/usr/share/icons/"
    cp -vfR "${srcdir}/milky" "${pkgdir}/usr/share/icons/"
}
