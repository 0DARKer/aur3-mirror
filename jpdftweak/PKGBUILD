# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=jpdftweak
pkgver=1.0
pkgrel=1
pkgdesc="A Swiss Army Knife GUI application for PDF documents"
arch=('i686' 'x86_64')
url="http://jpdftweak.sourceforge.net/"
license=('GPL')
depends=('java-runtime')
source=(http://downloads.sourceforge.net/jpdftweak/$pkgname-$pkgver.zip \
        jpdftweak.sh jpdftweak.desktop)
md5sums=('4425e80d4e326444414869100958465f'
         '8b129e219ecd593b4f8a178f2e275d23'
         '81c98dc1ab1474c826ef0c1566ee42d0')

build() {
  cd "$srcdir"

  mkdir -p "$pkgdir"/usr/share/java/$pkgname
  install -m644 $pkgname.jar "$pkgdir"/usr/share/java/$pkgname
  cp -r lib/  "$pkgdir"/usr/share/java/$pkgname

  install -D -m755 "$srcdir"/$pkgname.sh "$pkgdir"/usr/bin/$pkgname
  install -D -m644 "$srcdir"/$pkgname.desktop "$pkgdir"/usr/share/applications/$pkgname.desktop
}

# vim:set ts=2 sw=2 et:
