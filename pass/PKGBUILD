# Maintainer: Simon Zimmermann <simon@insmo.com>

pkgname=pass
pkgver=1.1.4
pkgrel=4
pkgdesc='stores, retrieves, generates, and synchronizes passwords securely'
url=http://zx2c4.com/projects/password-store/
source=(http://git.zx2c4.com/password-store/snapshot/password-store-1.1.4.tar.xz)
md5sums=('079c094244ad38ec39fdc92268f36718')
license='GPL'
arch=('i686' 'x86_64')
depends=('xclip' 'bash' 'git' 'gpgme' 'pwgen')

build() {
    mkdir -p ${pkgdir}/usr/bin || return 1 
    mkdir -p ${pkgdir}/usr/share/man/man1 || return 1 
    mkdir -p ${pkgdir}/etc/bash_completion.d || return 1

    cd ${srcdir}/password-store-${pkgver}/

    install -m 0755 -v src/password-store.sh ${pkgdir}/usr/bin/pass || return 1
    install -m 0644 -v man/pass.1 ${pkgdir}/usr/share/man/man1/pass.1 || return 1
    install -m 0644 -v contrib/pass.bash-completion ${pkgdir}/etc/bash_completion.d/password-store || return 1
}
