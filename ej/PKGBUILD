# Maintainer: SpepS <dreamspepser at yahoo dot it>

pkgname=ej
pkgver=0.1
pkgrel=1
pkgdesc="Simple gtk DejaVu format viewer."
arch=(i686 x86_64)
url="http://plhk.ru/"
license=('GPL')
depends=('djvulibre' 'gtkimageview')
source=("${url}static/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('376885753a5c990e22713202ae9b20a8')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make LOCALBASE=/usr LDFLAGS="`pkg-config --libs ddjvuapi gtkimageview`"
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  # install bin
  install -Dm755 ej "$pkgdir/usr/bin/ej"

  # install man
  install -Dm644 ej.1 "$pkgdir/usr/share/man/man1/ej.1"
}

# vim:set ts=2 sw=2 et:
