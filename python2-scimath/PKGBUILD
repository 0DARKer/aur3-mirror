pkgname=python2-scimath
pkgver=3.0.7
_githubtag=bf4519e
pkgrel=1
pkgdesc="Scientific and Mathematical calculations"
arch=('any')
url="https://github.com/enthought/scimath"
license=('BSD')
depends=('python2' 'python2-numpy>=1.1' 'python-scipy>=0.5.2'
         'python2-enthoughtbase' 'python2-traits' 'python2-traitsgui')
makedepends=('python2-distribute' 'gcc>=3.4')
conflicts=('python2-scimath-git' 'python-ets-scimath-svn')
options=(!emptydirs)

source=("https://github.com/enthought/scimath/tarball/${pkgver}")
md5sums=('0b20ebd5cfab5a8ad0b6177589de1738')

build() {
  cd "$srcdir/enthought-scimath-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

