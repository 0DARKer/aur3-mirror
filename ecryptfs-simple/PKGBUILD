#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=ecryptfs-simple
pkgver=2012.5.29
pkgrel=1
pkgdesc='A very simple utility for working with eCryptfs.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/ecryptfs-simple"
depends=(util-linux ecryptfs-utils)
source=(
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.5.29.tar.xz
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.5.29.tar.xz.sig
)
sha512sums=(
  97929bfa0343adbb45f6d86c9c3b3b8bf0808a973138bec693f5a762262e8a8f3877e7d2d03ab4965a567b22440694c9183576baefdb64284e9aa02ee8fd6cf5
  bb9848e6585c2f5db6db4eecf43ed869c7071136eedff8c52e0de78c40a501e32ae14fb8e4c1d24b5971777010de77fa50538368371ce1fe88b869c53f69054e
)
md5sums=(
  5947d27f9ccbb0b9f705c3fb7fb98579
  1eaa40cb3e3de0804809cc7914c65f48
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -l mount -o "$pkgname" "$pkgname.c"
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m4755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
}

