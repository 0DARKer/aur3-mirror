depends=(util-linux ecryptfs-utils)
source=(
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.6.17.2.tar.xz
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.6.17.2.tar.xz.sig
)
sha512sums=(
  20ad73b5cdcdf128e7ecbe7a3bafbc73fda7073dc7a8d077e202d76ce82a56822190008c28299b937e5c429caffd460bbeb9cbb3f4bb4ff7020d8dfb77c83d82
  4f698ce03be65b9d5c51d7398c81342afad0d78a8320647821a97cf6a88012c56d83caa3fb6512418706d8b096811b944544f4f96786d21811b51ad746c2deb7
)
md5sums=(
  61f803cbc8b8c2505c0cad28c6092030
  2fef605da1cfb470b91b3bd4f234083a
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  ./scripts/helper.sh build
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m4755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
}

