#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=ecryptfs-simple
pkgver=2012.5.29.1
pkgrel=1
pkgdesc='A very simple utility for working with eCryptfs.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/ecryptfs-simple"
depends=(util-linux ecryptfs-utils)
source=(
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.5.29.1.tar.xz
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.5.29.1.tar.xz.sig
)
sha512sums=(
  4cd157f2bc8e06b9982ceae2292ebe8c4ea07b8eebdba7d432ed9981f2d1905beb414c4e9138b5c2a750d8d53a873a3450a2b6633ad9b3d29814e3d5267d9597
  ddb89c2b44bb5a6813d682639dc9369f1a3c84550f5d03a1738a8b676caf2264214143df6e847f2f3eedbc444d59f8c1262da97d8af146b9a25158096e475204
)
md5sums=(
  3df8e48050cdcc2b235463c2282b6273
  30d38b286f0a3f4a1fa23eaad5abd3f6
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  gcc -O2 -l mount -o "$pkgname" "$pkgname.c"
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m4755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
}

