pkgname=ecryptfs-simple
pkgver=2012.7
pkgrel=1
pkgdesc='A very simple utility for working with eCryptfs.'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/ecryptfs-simple"
depends=(util-linux ecryptfs-utils)
source=(
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.7.tar.xz
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.7.tar.xz.sig
)
sha512sums=(
  8049e1b33c6e068903a4a547bcd774fffb9c11675c609fee85b554cefd281d825a48105d1ddbf5af500ef2ee6fbc78e732216755d05817fb3596c6b0e2b4cacd
  66d764df9bd8d3e3e94da658849cc248052b854b5a3c98a44ddb93e233e29964c5aa489f1031f015a29d4fbc30d9a000bbfa8d389c24a04c6e20b99b362195e7
)
md5sums=(
  ed98e03071bc3e0acb8b932e8d0f8515
  1e07c8e3bf70bfe3b40efc528e033b59
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  ./scripts/helper.sh build
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m4755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
}

