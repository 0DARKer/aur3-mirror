depends=(util-linux ecryptfs-utils)
source=(
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.6.25.tar.xz
  http://xyne.archlinux.ca/projects/ecryptfs-simple/archives/ecryptfs-simple-2012.6.25.tar.xz.sig
)
sha512sums=(
  881781c97de9b371f7c2a5d9c19db3568e66127801580f0479550cc606f278125800b4bca24e50a55b0cecca51ea364eaf00c82c202ca05bf6084c67631a40d4
  e4110fe841c7cc54ea8025bb5d64849cf25762b4c8fde89170619e85458e829f59b624702c9a8923caab0ec0347f1197f2ec1df9ca7c9f21d55ffb73f6b850f8
