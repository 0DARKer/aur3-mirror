md5sums=(
  926892dc3d8d11e32ba289e9c74f3f0e
  2b99bf48d2c6f55bf20fd4031fdac058
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  ./scripts/helper.sh build
}

package ()
{
  cd -- "${srcdir}/${pkgname}-${pkgver}"
  install -D -m4755 "$pkgname" "$pkgdir/usr/bin/$pkgname";
}

