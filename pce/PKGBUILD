pkgname="pce"
pkgver="20131222_fb58522"
pkgrel=1
license=('GPL2')
url="http://www.hampa.ch/pce/"
pkgdesc="A PC emulator with support for many machines"
depends=("sdl" "readline")
arch=("any")
source=("http://www.hampa.ch/pub/pce/pre/$pkgname-20131222-fb58522.tar.gz")
sha512sums=("5286467b20d91604e754d6455b56578176e889b0bcc6b63c603442f057cd29eb4c3ca6e6f626efc2b1dc3b28829d49a896618abc91c02bc40f9baf16081a1426")

build()
{
	cd $pkgname-20131222-fb58522
	
	./configure --prefix=/usr
	make
}

package()
{
	cd $pkgname-20131222-fb58522
	
	make DESTDIR="$pkgdir" install
}

