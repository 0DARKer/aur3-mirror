#Maintainer: kiefer <jorgelmadrid@gmail.com>

pkgname=go-openoffice.org-es
pkgver=3.2.1.3
_GOver=3.2.1
pkgrel=2
pkgdesc="Go-OpenOffice.org spanish language files"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://go-oo.org/discover/"
makedepends=('rpmextract')
depends=('go-openoffice>=3.2.1')
replaces=('go-oo-bin-es')
source=(http://ftp-1.gwdg.de/pub/openoffice/localized/es/$_GOver/OOo_"$_GOver"_Linux_x86_langpack-rpm_es.tar.gz)
md5sums=('29bd2e27abdf1d61a84c10757746fa5b')
[ "$CARCH" = "x86_64" ] && source=(http://ftp-1.gwdg.de/pub/openoffice/localized/es/$_GOver/OOo_"$_GOver"_Linux_x86-64_langpack-rpm_es.tar.gz)
[ "$CARCH" = "x86_64" ] && md5sums=('ca2339dfbee2dd38fedc0943ec47746e')

build() {
	cd ${srcdir}/*native_packed*/RPMS

	for i in *.rpm
		do rpmextract.sh $i
	done

	# install openoffice language files
	mkdir -p ${pkgdir}/usr/lib/go-openoffice/basis-link
	cp -R opt/openoffice.org/basis3.2/* ${pkgdir}/usr/lib/go-openoffice/basis-link
	cp -R opt/openoffice.org3/* ${pkgdir}/usr/lib/go-openoffice/basis-link
	chown root:root -R ${pkgdir}/usr/lib/go-openoffice
} 