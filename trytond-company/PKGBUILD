pkgname=trytond-company
_pkgname=trytond_company
pkgver=1.8.0
_pkgdir=1.8
pkgrel=1
pkgdesc="Company module of the Tryton application platform"
arch=('any')
url="http://www.tryton.org/"
license=('GPL3')
groups=('trytond-modules')
depends=('python' 'trytond>=1.8' 'trytond-party>=1.8' 'trytond-currency>=1.8')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}

md5sums=('dc8aa6c33e333c30bbcfae12d5c7b803')
