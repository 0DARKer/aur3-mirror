# Maintainer: Wido <widomaker2k7@gmail.com>

pkgname=streamtuner2-plugins
_pkgname=streamtuner2
pkgver=20100828
pkgrel=1
pkgdesc="Plugins for streamtuner2"
arch=('any')
url="http://milki.erphesfurt.de/${_pkgname}/"
license=('custom')
depends=('streamtuner2')
conflicts=()
source=(http://milki.erphesfurt.de/$_pkgname/ext/bieber.png
        http://milki.erphesfurt.de/$_pkgname/ext/bieber.py
        http://milki.erphesfurt.de/$_pkgname/ext/compound.py
        http://milki.erphesfurt.de/$_pkgname/ext/file.py
        http://milki.erphesfurt.de/$_pkgname/ext/modarchive.png
        http://milki.erphesfurt.de/$_pkgname/ext/modarchive.py
        http://milki.erphesfurt.de/$_pkgname/ext/podspider.py
        http://milki.erphesfurt.de/$_pkgname/ext/podspider.xml.bz2)

makedepends=()
md5sums=('8dd41d8fe6c3be016fd3e736bd714b2c'
         '08b916db6ce05f475da148eead057f20'
         '7f7930f5925641993a26859553146879'
         'bee226f8322c4d70c1c2bc3990353158'
         'e9e4992739dd1b1fb88d8024962d4c61'
         '8dc78128107c9d4c512e95543e91efc0'
         'a575072bdf63bf06a1430d5a37d9e9d1'
         '8b05dd8db808d0e3143c0f0216e9e638')

build() {
    cd ${srcdir}
    install -Dm 644 bieber.png ${pkgdir}/usr/share/${_pkgname}/channels/bieber.png || return 1
    install -Dm 755 bieber.py ${pkgdir}/usr/share/${_pkgname}/channels/bieber.py || return 1

    install -Dm 755 compound.py ${pkgdir}/usr/share/${_pkgname}/channels/compound.py || return 1

    install -Dm 755 file.py ${pkgdir}/usr/share/${_pkgname}/channels/file.py || return 1

    install -Dm 644 modarchive.png ${pkgdir}/usr/share/${_pkgname}/channels/modarchive.png || return 1
    install -Dm 755 modarchive.py ${pkgdir}/usr/share/${_pkgname}/channels/modarchive.py || return 1

    install -Dm 755 podspider.py ${pkgdir}/usr/share/${_pkgname}/channels/podspider.py || return 1
    install -Dm 644 podspider.xml.bz2 ${pkgdir}/usr/share/${_pkgname}/channels/podspider.xml.bz2 || return 1
}
