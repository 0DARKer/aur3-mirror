# Maintainer: J <J49137@gmail.com>
pkgname=zb-fetcher
pkgver=1.8.4
pkgrel=2
pkgdesc="Tool to monitor ZetaBoards forums for new posts"
arch=(any)
url=http://i-know-nothing.co.cc/ZetaBoards%20topic%20fetcher
license=(GPL3)
depends=("python2>=2.6" "pygtk>=2.6" python-pycurl)
makedepends=(gzip)
source=(http://sourceforge.net/projects/zb-fetcher/files/$pkgver/${pkgname}_$pkgver.tar.gz/download)
md5sums=(511ce3a0e614f1c534f65dde86d2bb29)

build () {
    cd "$srcdir/${pkgname}_$pkgver"
    ./configure
    make
}

package () {
    cd "$srcdir/${pkgname}_$pkgver"
    make DESTDIR="$pkgdir" install
}
