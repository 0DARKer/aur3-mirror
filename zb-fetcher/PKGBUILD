# Maintainer: J <J49137@gmail.com>
pkgname=zb-fetcher
pkgver=1.8.3
pkgrel=2
pkgdesc="Tool to monitor ZetaBoards forums for new posts"
arch=(any)
url=http://i-know-nothing.co.cc/ZetaBoards%20topic%20fetcher
license=(GPL3)
depends=("python2>=2.6" "pygtk>=2.6" python-pycurl)
source=(https://sourceforge.net/projects/zb-fetcher/files/1.8.3/${pkgname}_$pkgver.tar.gz)
md5sums=(6a250f2f04ba029883993237916ffa9d)

package () {
    cd "$srcdir/${pkgname}_$pkgver"
    ./configure
    make DESTDIR="$pkgdir" install
}
