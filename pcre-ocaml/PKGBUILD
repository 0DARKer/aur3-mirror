# Maintainer: Magnus Therning <magnus@therning.org>

pkgname=pcre-ocaml
pkgver=6.1.1
pkgrel=1
pkgdesc=" Perl compatible regular expressions for Objective Caml (OCaml)"
arch=('i686' 'x86_64')
url="http://www.ocaml.info/home/ocaml_sources.html#toc18"
license=('LGPL')
depends=('ocaml' 'pcre>=4.5' 'ocaml-findlib')
source=(
    http://hg.ocaml.info/release/$pkgname/archive/release-$pkgver.tar.bz2
    fixldflags.patch
    )
install=pcre-ocaml.install
changelog=${pkgname}.changelog
options=(!strip)

build() {
    cd $srcdir/$pkgname-release-$pkgver

    patch -p3 < $srcdir/fixldflags.patch

    make
    make htdoc
    mkdir -p $pkgdir$(ocamlfind printconf destdir)/pcre
    mkdir -p $pkgdir$(ocamlfind printconf destdir)/stublibs
    make OCAMLFIND_INSTFLAGS="-destdir $pkgdir$(ocamlfind printconf destdir)" install
    mkdir -p $pkgdir/usr/share/doc/pcre-ocaml
    cp -r lib/doc/pcre/html/* $pkgdir/usr/share/doc/pcre-ocaml
    install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

sha256sums=('2154e4c997bc46e3b55f13567b41dde4a25a23ccff322581b797b039b269aba8'
            '32bd0c6a7da32f95da1570f41680d97aa66dbac3fe64bd859ed00d67f558fa1e')
