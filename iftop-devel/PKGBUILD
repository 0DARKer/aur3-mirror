# Maintainer: Moritz Bunkus <moritz@bunkus.org>
# Base package Maintainer: Daenyth <Daenyth+Arch at gmail dot com>

pkgname=iftop-devel
pkgver=0.99_1.0pre2
pkgrel=2
pkgdesc="iftop does for network usage what top(1) does for CPU usage - pre-1.0 release"
arch=('i686' 'x86_64')
url="http://www.ex-parrot.com/~pdw/iftop/"
license=('GPL')
depends=('libpcap>=1.0.0' 'ncurses')
provides=('iftop')
conflicts=('iftop' 'iftop-ipv6')
options=('!makeflags')
source=(http://www.ex-parrot.com/~pdw/iftop/download/iftop-1.0pre2.tar.gz)
md5sums=('fef521a49ec0122458d02c64212af3c5')
sha512sums=('708172baa00a94671b494f33e7290af9ed4e0f764fabb500187855ee39840e379590274802e9ef360c128e881cfe0cefe7a12a9bfdcf9cfa7ffb49746b02300a')

build() {
  cd "$srcdir/iftop-1.0pre2"
  ./configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
    --sbindir=/usr/bin \
    --bindir=/usr/bin \
    || return 1
  make
}

package() {
  cd "$srcdir/iftop-1.0pre2"
  make DESTDIR="$pkgdir" install
}
