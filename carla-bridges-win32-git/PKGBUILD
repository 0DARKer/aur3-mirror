# Maintainer: Joermungand <joermungand at gmail dot com>
pkgname=carla-bridges-win32-git
pkgver=2458.ae79818
pkgrel=1
pkgdesc="Carla win32 bridge"
arch=('i686' 'x86_64')
url="http://kxstudio.sf.net/carla"
license=('GPL2')
conflicts=('carla-bridges-win')
provides=('carla-bridges-win')
depends=('mingw-w64-crt' 'mingw-w64-winpthreads' 'mingw-w64-liblo' 'mingw-w64-pkg-config' 'wine' 'carla-git')
makedepends=('git' 'mingw-w64-gcc')
source=("$pkgname"::'git://github.com/falkTX/Carla.git'
        vstsdk360_22_11_2013_build_100.zip)
md5sums=('SKIP'
         '1ac422ebb4aa2e86061278412c347b55')

  _path=$PATH
  _cflags=$CFLAGS
  _cxxflags=$CXXFLAGS
  _ldflags=$LDFLAGS
  _ar=$AR
  _cc=$CC
  _cxx=$CXX
  _pkg_config_path=$PKG_CONFIG_PATH
  _win32=$WIN32

pkgver() {
  cd "$srcdir/$pkgname"
  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  export PATH=/usr/i686-w64-mingw32/bin:/usr/i686-w64-mingw32/bin:$PATH
  export AR=i686-w64-mingw32-ar
  export CC=i686-w64-mingw32-gcc
  export CXX=i686-w64-mingw32-g++
  export PKG_CONFIG_PATH=/usr/i686-w64-mingw32/lib/pkgconfig
  export WIN32=true
  unset CFLAGS
  unset CXXFLAGS
  unset LDFLAGS
  ln -s ../../../VST3\ SDK source/includes/vst
  sed -i 's/#if !PLATFORM_64/#if 0/' source/includes/vst/base/source/fthread.cpp
  make win32
  export PATH=$_path
  CFLAGS=$_cflags
  CXXFLAGS=$_cxxflags
  LDFLAGS=$_ldflags
  export AR=$_ar
  export CC=$_cc
  export CXX=$_cxx
  export PKG_CONFIG_PATH=$_pkg_config_path
  export CFLAGS=$_cflags
  export CXXFLAGS=$_cxxflags
  export LDFLAGS=$_ldflags
  export WIN32=$_win32
  make wine32
}

package() {
  cd "$srcdir/$pkgname"
  mkdir -p "$pkgdir/usr/lib/carla"
  cp bin/*.exe "$pkgdir/usr/lib/carla/"
  cp bin/*.dll "$pkgdir/usr/lib/carla/"
  cp /usr/i686-w64-mingw32/bin/libgcc_s_sjlj-1.dll "$pkgdir/usr/lib/carla/"
  cp /usr/i686-w64-mingw32/bin/libstdc++-6.dll "$pkgdir/usr/lib/carla/"
  cp /usr/i686-w64-mingw32/bin/liblo-7.dll "$pkgdir/usr/lib/carla/"
  cp /usr/i686-w64-mingw32/bin/libwinpthread-1.dll "$pkgdir/usr/lib/carla/"
}

