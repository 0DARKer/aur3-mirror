pkgname='perl-text-haml'
pkgver='0.990103'
pkgrel='1'
pkgdesc="Haml parser"
arch=('any')
url='http://search.cpan.org/dist/Text-Haml'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/V/VT/VTI/Text-Haml-0.990103.tar.gz')
md5sums=('b60176f6d55c7bc8fcaa05edceb62a8d')

build() {
  DIST_DIR="${srcdir}/Text-Haml-0.990103"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

