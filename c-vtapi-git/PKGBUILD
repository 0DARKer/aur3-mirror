#Maintainer: Christian Rebischke <echo Q2hyaXMuUmViaXNjaGtlQGdtYWlsLmNvbQo= | base64 -d>

pkgname=c-vtapi-git
pkgver=101.d42f95d
pkgrel=1
pkgdesc="The official VirusTotal-API written in C"
arch=("any")
url=("https://github.com/VirusTotal/c-vtapi")
license=("Apache")
depends=("automake" "autoconf" "libtool" "curl" "openssl")
makedepends=("git" "gcc")
source=("git+http://github.com/VirusTotal/c-vtapi")
md5sums=("SKIP")


pkgver() {
  cd c-vtapi
  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd $srcdir/c-vtapi
  autoreconf -fi
  ./configure --prefix=$pkgdir/usr/lib/c-vtapi
  make
  cd $srcdir/c-vtapi/examples/
  make


}
package() {
  cd "$srcdir/c-vtapi"
  make install 

}
