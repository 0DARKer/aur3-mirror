pkgname=eclipse-i18n-de
pkgver=3.7.0.v20111128043401
pkgrel=1
_buildid=R0.9.1
pkgdesc="German language pack for eclipse IDE"
url="http://babel.eclipse.org/"
arch=('any')
license=('EPL')
depends=('eclipse>=3.7')
makedepends=('unzip')
conflicts=('eclipse-i18n-pack1')
source=("http://download.eclipse.org/technology/babel/babel_language_packs/${_buildid}/indigo/BabelLanguagePack-eclipse-de_${pkgver}.zip")

md5sums=('73560e18e472e76410c97afb672ffb15')
sha256sums=('5e66d889f27232b5ba73a71d0cd4d703e0cc2770afb9e5d545b77dc63468c251')

build() {
  mkdir -p ${pkgdir}/usr/share/
  cp -R ${srcdir}/eclipse ${pkgdir}/usr/share/
}
