pkgname=eclipse-i18n-de
pkgver=3.7.0.v20120721081147
pkgrel=1
_buildid=R0.10.0
pkgdesc="German language pack for eclipse IDE"
url="http://babel.eclipse.org/"
arch=('any')
license=('EPL')
depends=('eclipse>=3.7')
makedepends=('unzip')
conflicts=('eclipse-i18n-pack1')
#automatic mirror
source=("http://www.eclipse.org/downloads/download.php?r=1&file=/technology/babel/babel_language_packs/${_buildid}/indigo/BabelLanguagePack-eclipse-de_${pkgver}.zip")
#direct
#source=("http://download.eclipse.org/technology/babel/babel_language_packs/${_buildid}/indigo/BabelLanguagePack-eclipse-de_${pkgver}.zip")

md5sums=('3ae1525305bb27e4e6bf4dd628a7f4a6')

build() {
  mkdir -p ${pkgdir}/usr/share/
  cp -R ${srcdir}/eclipse ${pkgdir}/usr/share/
}
