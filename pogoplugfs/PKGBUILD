# Contributor: Sara <sfauzia at comcast.net>

pkgname=pogoplugfs
pkgver=1.0.0.6
pkgrel=1
pkgdesc="Access files on Pogoplug device locally"
arch=('i686' 'x86_64')
license=('proprietary')
url="http://www.pogoplug.com"
source=(http://download.pogoplug.com/install/linux/pogopluginstall.tar.gz)
md5sums=('22451203226e69f35c2aa8bae6b60dd7')

if [ "${CARCH}" = 'x86_64' ]; then
  depends=('lib32-fuse')
else
  depends=('fuse')
fi

package() {
  install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}

