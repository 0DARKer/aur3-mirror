# Contributor: Tibor Bamhor <tiborb95 at gmail.com>

pkgname=gimp-plugin-satequalizer
pkgver=0.8
pkgrel=1
pkgdesc="Saturation equalizer. 6-bands equalizer, color temperature adjustment, quick sun masks and more."
url="http://code.google.com/p/satequalizer/"
license="GPL-3"
arch=('i686' 'x86_64')
depends=(gimp)
#makedepends=()
source=(http://satequalizer.googlecode.com/files/satequalizer-$pkgver.tgz)

md5sums=('af8cdcb9f9f1514c9ecf60cc910d4a0b')

build() {

#defining variables
work_dir=$srcdir/satequalizer/  


#building
cd $work_dir
gimptool-2.0  --build saturate.c || exit 1

#copying file into pkgdir to be packed
mkdir -p $pkgdir/usr/lib/gimp/2.0/plug-ins/

install -m 755 saturate $pkgdir/usr/lib/gimp/2.0/plug-ins/ 


}


