# Maintainer: Chris van Dijk (quigybo) <quigybo at hotmail dot com>
# Contributor: Scott Olson <scott at scott-olson dot org>

pkgname=gist
pkgver=2.0.0
pkgrel=1
pkgdesc="Potentially the best command line gister"
arch=('any')
url="http://github.com/defunkt/gist"
license=('MIT')
depends=('ruby' 'git')
optdepends=('xclip: put pasted gists url into X selection automagically')
source=("https://github.com/defunkt/${pkgname}/tarball/v${pkgver}")
md5sums=('4be2158b5a3d570f0f14d3ba092458db')

package() {
    cd "${srcdir}/defunkt-${pkgname}"-*

    install -Dm755 ${pkgname} "${pkgdir}/usr/bin/${pkgname}"
    install -Dm644 man/${pkgname}.1 "${pkgdir}/usr/share/man/man1/${pkgname}.1"
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

