# Maintainer: Renzo Carbonara <gnuk0001@gmail.com>
pkgname=ruby-yard
pkgver=0.6.1
pkgrel=1
pkgdesc="Documentation tool for consistent and usable documentation in Ruby."
arch=('any')
url="http://yardoc.org"
license=('MIT')
groups=()
depends=()
makedepends=('rubygems')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=("http://gems.rubyforge.org/gems/yard-${pkgver}.gem")
noextract=("yard-${pkgver}.gem")
md5sums=('c40800b5f1d042660b63338c77bd4f5a')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" yard-$pkgver.gem \
  -n "$pkgdir/usr/bin"
}

