# Contributor: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=sizzle
pkgver=0.0.31
pkgrel=7
pkgdesc="An interpreter for the Scheme programming language"
arch=('i686' 'x86_64')
url="http://www.grabmueller.de/martin/www/sizzle/sizzle.en.html"
license=('GPL')
install=sizzle.install
source=(http://www.grabmueller.de/martin/www/tarballs/$pkgname-$pkgver.tar.gz \
  sizzle.patch)
md5sums=('86f19180d1f71d30fe307bd18c16b62a' '1b51ef6bfebd326767f17966ec6410a9')
options=('libtool')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr || return 1
  patch -p1 < ../sizzle.patch || return 1
  make || return 1
  make prefix=$startdir/pkg/usr install || return 1
  mv $startdir/pkg/usr/info $startdir/pkg/usr/share || return 1
  rm $startdir/pkg/usr/share/info/dir || return 1
}
