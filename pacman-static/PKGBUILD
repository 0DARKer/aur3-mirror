# This is gross, but can totally save you if you need to fix a machine
# on which you can't easily boot install media.

pkgname=pacman-static
pkgver=2013
pkgrel=3
pkgdesc="Statically-compiled pacman (for fixing/install systems without libc)"
arch=('i686' 'x86_64')
url="http://www.archlinux.org/pacman/"
license=('GPL')
depends=()
makedepends=(gnupg abs)
optdepends=('gnupg: verify package integrity')
source=(genpacmanstatic)
sha256sums=('2349ca62a9ee05ac52dc50f1a133a3401aa799200da23b9f52bf4e0df7b1860e')

build() {
   cd "$srcdir"
   export ASROOT
   ./genpacmanstatic
}

package() {
  install -sD "$srcdir"/overlay/usr/bin/pacman-static \
      "$pkgdir"/usr/bin/pacman-static
}
