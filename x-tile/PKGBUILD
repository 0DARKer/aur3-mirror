pkgname=x-tile
pkgver=1.8.6
pkgrel=1
pkgdesc="A gnome/xfce tiling applet for your panel"
arch=('i686' 'x86_64')
url="http://www.giuspen.com/x-tile/"
license=('GPL2')
depends=('python2' 'pygtk' 'gnome-python-desktop')
source=(http://www.giuspen.com/software/${pkgname}-${pkgver}.tar.gz)
md5sums=('5176ceda20028e42b6aa6e40de7415cc')

build() {
  	cd "$srcdir/$pkgname"_"$pkgver"
	
	sed -i "s|#!/usr/bin/env python$|#!/usr/bin/env python2|" setup.py

}

package() {
  	cd "$srcdir/$pkgname"_"$pkgver"
  
	python2 setup.py install --root=$pkgdir/ --optimize=1
}

