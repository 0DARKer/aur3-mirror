pkgname=x-tile
pkgver=1.8.4
pkgrel=1
pkgdesc="A gnome/xfce tiling applet for your panel"
arch=('i686' 'x86_64')
url="http://www.giuspen.com/x-tile/"
license=('GPL2')
depends=('python2' 'pygtk' 'gnome-python-desktop')
source=(http://www.giuspen.com/software/${pkgname}-${pkgver}.tar.gz)
md5sums=('462c211a2dcad9fd340efe8afd4b4ed5')

build() {
  	cd $srcdir/$pkgname-$pkgver
	
	sed -i "s|#!/usr/bin/env python$|#!/usr/bin/env python2|" $srcdir/$pkgname-$pkgver/setup.py

}

package() {
  	cd $srcdir/$pkgname-$pkgver
  
	python2 setup.py install --root=$pkgdir/ --optimize=1
}
