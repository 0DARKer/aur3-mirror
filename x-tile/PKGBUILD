# Maintainer: sausageandeggs <sausageandeggs at archlinux dot us>

pkgname=x-tile
pkgver=1.9
pkgrel=3
pkgdesc="A gnome/xfce tiling applet for your panel"
arch=('i686' 'x86_64')
url="http://www.giuspen.com/x-tile/"
license=('GPL2')
depends=('python2-gconf')
source=(http://www.giuspen.com/software/${pkgname}-${pkgver}.tar.gz $pkgname.sh)

build() {
    cd "$srcdir/$pkgname"-"$pkgver"
    sed -i "s|#!/usr/bin/env python$|#!/usr/bin/env python2|" setup.py
}

package() {
    cd "$srcdir/$pkgname"-"$pkgver"
    python2 setup.py install --root=$pkgdir/ --optimize=1
    install -Dm755 "$pkgname-ng" "$pkgdir/usr/bin/$pkgname-ng"
    install -Dm755 "$srcdir/$pkgname.sh" "$pkgdir/usr/bin/$pkgname"
    sed -i "s|#!/usr/bin/env python$|#!/usr/bin/env python2|" ${pkgdir}/usr/bin/${pkgname}-ng
}

md5sums=('e7439fefdba9b57d0b75586ab3e8d9cb'
         'ff08e1242b4589c247e31be216962df1')
