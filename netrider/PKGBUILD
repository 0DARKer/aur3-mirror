# Maintainer: Georg Potthast <nospam at georgpotthast.de>
pkgname=netrider
pkgver=0.93
pkgrel=2
pkgdesc="Webkit based browser"
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/netrider/"
license=('BSD')
groups=()
depends=('libxft' 'libxinerama' 'gcc' 'sqlite' 'curl' 'libxslt' 'libxtst')
makedepends=('libarchive')
source=("http://downloads.sourceforge.net/project/netrider/NetRider-$pkgver-$pkgrel.$CARCH.rpm")
md5sums=('e10248b827ef12a9bf2d6a9f79f5159f')

build() {
  cd "${srcdir}"
  bsdtar -xf "NetRider-$pkgver-$pkgrel.$CARCH.rpm"
}

package() {
  install -d -m 755 "${pkgdir}/usr/lib"
  install -d "${srcdir}/usr/local/bin" "${pkgdir}/usr"
  install -d "${srcdir}/usr/local/lib" "${pgkdir}/usr"
  install -d "${srcdir}/home/netrider" "${pkgdir}/home"
  install -d -m 755 "${pkgdir}/usr/share/fonts"
  ln -s 'TTF' "${pkgdir}/usr/share/fonts/truetype" | : 
}
