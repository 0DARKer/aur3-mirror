# Maintainer: Anton Bazhenov <anton.bazhenov at gmail>

pkgname=bkbtl
pkgver=beta8
pkgrel=1
pkgdesc="Emulator of the Soviet BK-0010/0011 computers"
arch=('i686')
url="http://code.google.com/p/ukncbtl/"
license=('LGPL')
depends=('qt')
source=("http://bkbtl.googlecode.com/files/QtBkBtl-${pkgver}-linux.tar.gz"
        "${pkgname}.sh")
md5sums=('2073ebdc71b9d14bd2605ecc994fad3d'
         '260397e2603f3b6f8d313dee04c82fba')

package() {
  cd "${srcdir}"

  # Install program files
  install -Dm755 QtBkBtl "${pkgdir}/opt/${pkgname}/QtBkBtl"
  install -m644 *.so.4 *.rom "${pkgdir}/opt/${pkgname}"

  # Install the launcher
  install -Dm755 "${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
}
