pkgname=eclipse-i18n-es
pkgver=3.7.0
_pkgbuild=v20110723043401
pkgrel=1
pkgdesc="Spanish language for eclipse IDE"
url="http://babel.eclipse.org/"
arch=('any')
license=('EPL')
depends=('eclipse')
makedepends=('unzip')
conflicts=('eclipse-i18n-es-pack')
changelog=$pkgname.changelog
source=("http://www.mirrorservice.org/sites/download.eclipse.org/eclipseMirror/technology/babel/babel_language_packs/R0.9.0/indigo/BabelLanguagePack-eclipse-es_${pkgver}.${_pkgbuild}.zip")

md5sums=('55e2143fec97d7635b57c7dfe9db9adb')
sha256sums=('6a67cd27f0f608598da73a2aa0fd47b27070ecce0726da78ffeccf25bf56697c')

build() {
  mkdir -p ${pkgdir}/usr/share/
  cp -R ${srcdir}/eclipse ${pkgdir}/usr/share/
}
