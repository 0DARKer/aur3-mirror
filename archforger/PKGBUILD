# Maintainer: Vindex17 <vindex17@outlook.it>

pkgname=archforger
pkgver=0.5.2.beta
pkgrel=1
pkgdesc='All-in-one tool to build and install any ArchLinux package'
arch=('i686' 'x86_64')
url='https://sourceforge.net/projects/archforger'
license=('GPL3')
depends=('sudo' 'pacman' 'git' 'yaourt')
provides=('archforger')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('1bc07b7c9e4517c6c853a9c69e8e54f27272212815479c2fbede9e3e289b0efea8d10774f725d83d9be79fd023b66af61e4fec84bcff3690c6a3784007b86059')
install='archforger.install'

prepare() {
	rm -rf "$srcdir/build"
	mkdir "$srcdir/build"
}

build() {
	cd "$srcdir/build"
	CXXFLAGS="$CXXFLAGS -std=gnu++11 -pthread"
	cmake -DCMAKE_INSTALL_PREFIX='/usr' \
	      -DCMAKE_BUILD_TYPE=Release \
	      "../$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="$pkgdir/" install
}
