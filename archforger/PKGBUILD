# Maintainer: Vindex17 <vindex17@outlook.it>

pkgname=archforger
pkgver=0.5.1.beta
pkgrel=1
pkgdesc='All-in-one tool to build and install any ArchLinux package'
arch=('i686' 'x86_64')
url='https://sourceforge.net/projects/archforger'
license=('GPL3')
depends=('sudo' 'pacman' 'git' 'yaourt')
provides=('archforger')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('a5665108afcc64b5925494aba4366bf27c077c6d77d52f38ab8c0cbc5bfd0b914304c78d75ffec82c279949499f2c9b883709f70c749a853fdb35b95b9819eb3')
install='archforger.install'

prepare() {
	rm -rf "$srcdir/build"
	mkdir "$srcdir/build"
}

build() {
	cd "$srcdir/build"
	CXXFLAGS="$CXXFLAGS -std=gnu++11 -pthread"
	cmake -DCMAKE_INSTALL_PREFIX='/usr' \
	      -DCMAKE_BUILD_TYPE=Release \
	      "../$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="$pkgdir/" install
}
