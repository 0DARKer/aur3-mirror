# Maintainer: Vindex17 <vindex17@outlook.it>

pkgname=archforger
pkgver=0.7.2
pkgrel=1
pkgdesc='All-in-one tool to build and install any ArchLinux package'
arch=('i686' 'x86_64')
url='https://sourceforge.net/projects/archforger'
license=('GPL3')
depends=('sudo' 'pacman' 'git' 'yaourt' 'sed' 'grep')
provides=('archforger')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('18b9085b93b6b639fc2c39feb57def2b8dce5e878e00e81d1061913b5dc3ca9559c5aa83a70c1cd3b48ac42c3f60d36078430eadf45ab649c0fd3d01a8c27b3f')

prepare() {
	rm -rf "$srcdir/build"
	mkdir "$srcdir/build"
}

build() {
	cd "$srcdir/build"
	CXXFLAGS="$CXXFLAGS -std=gnu++11 -pthread"
	cmake -DCMAKE_INSTALL_PREFIX='/usr' \
	      -DCMAKE_BUILD_TYPE=Release \
	      "../$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="$pkgdir/" install
}
