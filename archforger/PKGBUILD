# Maintainer: Vindex17 <vindex17@outlook.it>

pkgname=archforger
pkgver=0.7.1
pkgrel=1
pkgdesc='All-in-one tool to build and install any ArchLinux package'
arch=('i686' 'x86_64')
url='https://sourceforge.net/projects/archforger'
license=('GPL3')
depends=('sudo' 'pacman' 'git' 'yaourt' 'sed' 'grep')
provides=('archforger')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('dc331541e9c27162270af971679c38db3374258cda0e2282264d62530904885e42234ed8bcb303ace534b0d26242c21d0010f3f71eb7b7492fb5870d2c84271c')

prepare() {
	rm -rf "$srcdir/build"
	mkdir "$srcdir/build"
}

build() {
	cd "$srcdir/build"
	CXXFLAGS="$CXXFLAGS -std=gnu++11 -pthread"
	cmake -DCMAKE_INSTALL_PREFIX='/usr' \
	      -DCMAKE_BUILD_TYPE=Release \
	      "../$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="$pkgdir/" install
}
