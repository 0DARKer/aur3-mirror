# Maintainer: Vindex17 <vindex17@outlook.it>

pkgname=archforger
pkgver=0.5.0.beta
pkgrel=1
pkgdesc='All-in-one tool to build and install any ArchLinux package'
arch=('i686' 'x86_64')
url='https://sourceforge.net/projects/archforger'
license=('GPL3')
depends=('sudo' 'pacman' 'git' 'yaourt')
provides=('archforger')
source=("http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz")
sha512sums=('0c40e77950846c3161e4e5f79e75e76f467f8e5265cbe0bba859ccf181b302bcdccc0cd99d0fb4c25d74430ef75dfd46d447cbe68e08de09ea07157563864438')
install='archforger.install'

prepare() {
	rm -rf "$srcdir/build"
	mkdir "$srcdir/build"
}

build() {
	cd "$srcdir/build"
	CXXFLAGS="$CXXFLAGS -std=gnu++11 -pthread"
	cmake -DCMAKE_INSTALL_PREFIX='/usr' \
	      -DCMAKE_BUILD_TYPE=Release \
	      "../$pkgname-$pkgver"
	make
}

package() {
	cd "$srcdir/build"
	make DESTDIR="$pkgdir/" install
}
