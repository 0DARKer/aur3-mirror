# Contributor: killhellokitty <killhellokitty.deviantart.com>
# Maintainer: killhellokitty <killhellokitty.deviantart.com>

pkgname=delorean-dark-themes-3.8
pkgver=06222013
pkgrel=5
pkgdesc="Unique Metal Theme for Gtk2, Gtk3, Metacity, Xfce, LXDE"
arch=('any')
url="http://fav.me/d6a12ra"
license=('GPLv3')
depends=('gtk-engines' 'gnome-themes-standard>=3.6.0' 'gtk-engine-murrine>=0.98.2')
_downloadLink=`curl -c cookies --silent http://killhellokitty.deviantart.com/art/DeLorean-Dark-Themes-3-8-379643446 | grep download-button | sed -sre 's/^.*href="([^\"]+).*$/\1/' | sed -se 's/\&amp;/\&/g'`
source=("${pkgname}-${pkgver}.zip::${_downloadLink}")
_fname=`echo "${_downloadLink}" | sed -sre 's/^.+\/([^/]+)$/\1/'`
DLAGENTS=("http::/usr/bin/curl -fLC - -b cookies -o '${_fname}'")
install=$pkgname.install
#replaces=('delorean-dark-theme-3.6' 'delorean-dark-theme-3.6-g')
#conflicts=('delorean-dark-theme-3.6' 'delorean-dark-theme-3.6-g')

md5sums=('9f10565c8997735c466e3034bb655d85')


package() {
  # install themes
  
  #cd DORIAN

  find delorean-dark-theme-3.8/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find delorean-dark-theme-G-3.8/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;
  find delorean-dark-theme-P-3.8/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \; 
  find delorean-dark-theme-R-3.8/ -type f \
      -exec install -Dm644 "{}" "$pkgdir/usr/share/themes/{}" \;           
}

