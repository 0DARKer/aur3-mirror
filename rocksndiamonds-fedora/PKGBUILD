pkgname=rocksndiamonds-fedora
_pkgname=rocksndiamonds
pkgver=3.2.4
pkgrel=2
pkgdesc="Arcade style game in the tradition of Boulder Dash.  Fedora version."
arch=(i686 x86_64)
url="https://admin.fedoraproject.org/pkgdb/packages/name/rocksndiamonds"
license=('GPL')
groups=()
depends=(sdl_mixer sdl_net)
makedepends=(rpmextract)
provides=()
conflicts=(rocksndiamonds)
replaces=(rocksndiamonds-fedora-32 rocksndiamonds-fedora-64)
backup=()
options=()
install=
source=(http://koji.fedoraproject.org/packages/$_pkgname/3.2.4/1.fc9/i386/$_pkgname-$pkgver-1.fc9.i386.rpm)
  [ "$CARCH" = "x86_64" ] && 
  source=(http://koji.fedoraproject.org/packages/$_pkgname/$pkgver/1.fc9/x86_64/$_pkgname-$pkgver-1.fc9.x86_64.rpm)
noextract=()
md5sums=(553ecbdaa0c06f66e2ed9f17e512be88)
  [ "$CARCH" = "x86_64" ] && 
  md5sums=(b83cae6f43a0da30d37464a3b3090f07)

build() {
  [ "$CARCH" = "i686" ] && rpmextract.sh $srcdir/rocksndiamonds-$pkgver-1.fc9.i386.rpm
  [ "$CARCH" = "x86_64" ] && rpmextract.sh $srcdir/rocksndiamonds-$pkgver-1.fc9.x86_64.rpm
  cp -R $srcdir/usr $pkgdir
}

