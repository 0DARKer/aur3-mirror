# Generator  : CPANPLUS::Dist::Arch 1.04
pkgname='perl-text'
pkgver='0.52'
pkgrel='1'
pkgdesc="Advanced paragraph formatting"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/Text'
source=('http://search.cpan.org/CPAN/authors/id/G/GA/GABOR/Text-Format0.52.tar.gz')
md5sums=('9b1936e65ee05d904bb329e32259814f')

build() {
  DIST_DIR="${srcdir}/Text-Format0.52"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
