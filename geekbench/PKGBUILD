# Maintainer: jose <jose1711 [at] gmail (dot) com>

pkgname=geekbench
pkgver=2.1.11
pkgrel=1
pkgdesc="A cross-platform benchmark that measures processor and memory performance"
arch=('i686' 'x86_64')
url="http://www.primatelabs.ca/geekbench/"
depends=('zlib' 'gcc-libs')
license=("custom")
source=("http://www.primatelabs.ca/download/Geekbench21-Linux.tar.gz")
md5sums=('16063f004bbcd59f25dd3bbce77ed122')
options=('!strip')

build() {
true
}

package() {
install -D -m755 $srcdir/dist/Geekbench21-Linux/${pkgname}_x86_32 $pkgdir/opt/${pkgname}/${pkgname}_x86_32
install -D -m755 $srcdir/dist/Geekbench21-Linux/${pkgname}_x86_64 $pkgdir/opt/${pkgname}/${pkgname}_x86_64
mkdir -p $pkgdir/usr/bin
[ "${CARCH}" = "i686" ] && ln -s /opt/${pkgname}/${pkgname}_x86_32 $pkgdir/usr/bin/${pkgname} || \
ln -s /opt/${pkgname}/${pkgname}_x86_64 $pkgdir/usr/bin/${pkgname}
}
