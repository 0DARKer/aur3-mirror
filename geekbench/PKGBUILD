# Maintainer: jose <jose1711 [at] gmail (dot) com>

pkgname=geekbench
pkgver=2.2.3
pkgrel=1
pkgdesc="A cross-platform benchmark that measures processor and memory performance"
arch=('i686' 'x86_64')
url="http://www.primatelabs.ca/geekbench/"
depends=('zlib' 'gcc-libs')
license=("custom")
source=("http://s3.amazonaws.com/geekbench/Geekbench-${pkgver}-Linux.tar.gz")
md5sums=('f96a7346f93dc0cb98e51617e88b18f9')
options=('!strip')

build() {
true
}

package() {
install -D -m755 $srcdir/dist/Geekbench-2.2.3-Linux/${pkgname}_x86_32 $pkgdir/opt/${pkgname}/${pkgname}_x86_32
install -D -m755 $srcdir/dist/Geekbench-2.2.3-Linux/${pkgname}_x86_64 $pkgdir/opt/${pkgname}/${pkgname}_x86_64
mkdir -p $pkgdir/usr/bin
[ "${CARCH}" = "i686" ] && ln -s /opt/${pkgname}/${pkgname}_x86_32 $pkgdir/usr/bin/${pkgname} || \
ln -s /opt/${pkgname}/${pkgname}_x86_64 $pkgdir/usr/bin/${pkgname}
}
