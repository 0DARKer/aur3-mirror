pkgname=utouch-frame
pkgver=2.2.1
pkgrel=2
pkgdesc="Touch Frame Library"
arch=(i686 x86_64)
url="https://launchpad.net/utouch-frame"
license=(GPL)
depends=('utouch-evemu>=1.0.5' 'libxi' 'mtdev' 'gcc-libs' 'libpciaccess' 'pixman')
makedepends=('xorg-server-devel')
source=(http://launchpad.net/$pkgname/trunk/$pkgname-$pkgver/+download/$pkgname-$pkgver.tar.gz)
options=('!libtool')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --with-xi
  make || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('3b2e5b311dc3100043ab7284390c0be0')
