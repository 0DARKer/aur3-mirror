pkgname=utouch-frame
pkgver=1.1.4
pkgrel=1
pkgdesc="Touch Frame Library"
arch=(i686 x86_64)
url="https://launchpad.net/utouch-frame"
license=(GPL)
depends=('utouch-evemu>=1.0.5' 'mtdev')
makedepends=()
source=(http://launchpad.net/$pkgname/trunk/v$pkgver/+download/$pkgname-$pkgver.tar.gz)
options=('!libtool')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}

md5sums=('2ac43a42c1481455ae15db49b76a7edc')
