# This is a corrected version, it have mpeg_stat inside.

pkgname=dpgconv
pkgver=8
pkgrel=1
pkgdesc="Video converter tool for Nintendo DS"
arch=('i686')
url="http://theli.is-a-geek.org/blog/static/dpgconv"
license=('GPL')
groups=()
makedepends=()
depends=('mplayer')
provides=()
conflicts=()
replaces=()
backup=()
options=()
source="http://kenjy.net/download/$pkgname-$pkgver.tar.gz"
noextract=()
md5sum=('85742c8f8246d80f6b7d1463b49426c4')

build(){
	mkdir -p "$pkgdir/usr/bin"
	mkdir -p "$pkgdir/usr/lib"
	cd "${srcdir}/$pkgname-$pkgver"
	make
	cp ${srcdir}/$pkgname-$pkgver/$pkgname-$pkgver.py  ${pkgdir}/usr/bin/
	cp ${srcdir}/$pkgname-$pkgver/mpeg_stat  ${pkgdir}/usr/bin/
	cp ${srcdir}/$pkgname-$pkgver/mpeg_stat.1  ${pkgdir}/usr/lib/
}
