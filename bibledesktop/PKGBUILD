# Contributor:  Alois Nespor <alois.nespor@gmail.com>

pkgname=bibledesktop  
pkgver=1.6
pkgrel=3
pkgdesc="Frontend for the jsword-engine, a sword-like bible study software written in Java."
url="http://crosswire.org/jsword"
arch=('any')
license=('GPL')
depends=('java-runtime')
source=(http://crosswire.org/ftpmirror/pub/jsword/release/$pkgname-$pkgver-bin.tar.gz bibledesktop)
md5sums=('5e9bfa0a7d96324bee600df486932518' '5155ed975a8e24c1cfdd2092ed0ae9d9')
build() {
  cd $srcdir/
  install -d  $pkgdir/usr/share/$pkgname
  cp -R $srcdir/jsword-$pkgver/* $pkgdir/usr/share/bibledesktop
  chmod 755 $pkgdir/usr/share/bibledesktop/BibleDesktop.sh
  install -Dm755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}
