# Author: half-left <http://half-left.deviantart.com/>
# Maintainer: h0neycrysp <h0neycrysp@gmail.com>

pkgname=gnome-shell-theme-elementary
pkgver=1.0
pkgrel=1
pkgdesc="This is a GNOME Shell theme based on the Elementary GTK2 theme."
url="http://half-left.deviantart.com/art/GNOME-Shell-Elementary-193232931"
license=('GPL')
arch=('any')
depends=('gnome-shell')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
            'gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://www.deviantart.com/download/193232931/gnome_shell_elementary_by_half_left-d371nhf.zip")
DLAGENTS=('http::/usr/bin/wget -c -t 3 --waitretry=3 -H -U Mozilla -O %o %u')
md5sums=('0b6941d7ebbadb76ed60440020066065')

package() {
  mkdir -p ${pkgdir}/usr/share/themes/
  unzip gnome_shell_elementary_by_half_left-d371nhf.zip -d ${pkgdir}/usr/share/themes/
  chmod -R 755 ${pkgdir}/usr/share/themes/gs-elementary
}

