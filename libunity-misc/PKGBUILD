# Maintainer: Adam Hani Schakaki (krzd) <krzd@krzd.net>
 
pkgname=libunity-misc
pkgver=0.1.1
_majorver=(`echo $pkgver | egrep -o '[0-9]+\.[0-9]*+'`)
pkgrel=1
pkgdesc="Ubuntu's new desktop interface - differently licensed stuff"
arch=('i686' 'x86_64')
url="https://launchpad.net/libunity-misc/"
license=('GPL' 'LGPL')
depends=('glib' 'gobject-introspection' 'gtk2' 'clutter')
source=(http://launchpad.net/${pkgname}/${_majorver}/${pkgver}/+download/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=('e6cf92a9606a8e88ed42233719050184')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
}
 
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

