# Maintainer: Ryan Young <ry an. ry. young@gmail.com> (omit spaces)
pkgname=linssid
pkgver=2.0
pkgrel=1
pkgdesc="A graphical wireless scanner for Linux"
arch=(i686 x86_64)
url="http://sourceforge.net/projects/linssid/"
license=('GPL3')
groups=()
depends=(qt4 wireless_tools)
makedepends=(boost qt4 qwt)
optdepends=('sudo: privilege escalation to use wireless tools')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}_$pkgver.orig.tar.gz)
noextract=()
md5sums=('8fd6aac80690031f2adbd6f4e2ae0f37')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  qmake-qt4
  # work around Debian-style paths
  sed -i 's/gcc-4\.6/gcc/' Makefile
  sed -i 's/g++-4\.6/g++/' Makefile
  sed -i 's/\/usr\/lib\/libboost_regex-mt\.a/-lboost_regex/' Makefile
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make INSTALL_ROOT="$pkgdir/" install
}