pkgname=touhy-meta-git
_gitname=touhy
pkgver=50.499d664
pkgrel=5
pkgdesc="Meta package for Elzen's desktop Environment"
arch='any'
license='GPL3'
install='touhy.install'
url='http://fadrienn.irlnc.org/touhy/'
depends=('udisks2' 'pygtk' 'python2-wnck' 'python2-notify' \
  'python2-dbus' 'python2-numpy' 'python2-imaging' 'python2-mpd' \
  'python2-poppler' 'python2-pyalsaaudio' 'python2-pysqlite' \
  'python2-xlib' 'python-xklavier' 'vte' 'xorg-xbacklight' \
  'gstreamer0.10-python' 'python2-beautifulsoup3' 'touhy-git' \
  'pygtksourceview2' 'pywebkitgtk' 'python2-pyenchant' \
  "elzaudm-git" "elzdraw-git" "elzedit-git" "elzfold-git" \
  "elzlist-git" "elznote-git" "elzplay-git" "elzread-git" \
  "elzshow-git" "elzterm-git" "elzview-git" "elzword-git")
makedepends='git'
md5sums=('SKIP')
source=('git://fadrienn.irlnc.org/touhy')

pkgver() {
  cd ${srcdir}/${_gitname}
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  return 0
}
