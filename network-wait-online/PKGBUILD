# Maintainer: Benjamin Robin <benjarobin>

pkgname=network-wait-online
pkgver=1.0
pkgrel=1
pkgdesc="Network wait connection ready"
arch=('any')
url="http://forums.archlinux.fr/topic12900.html"
license=('BSD')
depends=('iputils' 'iproute2')
source=('network-wait-online.sh'
        'network-wait-online@.service')

md5sums=('80e2bf8be321865b34ee4be87b11b988'
         '9100037d9a3cad61a9322b112b587f85')

package()
{
    mkdir -p ${pkgdir}/usr/lib/systemd/system/ ${pkgdir}/usr/bin/
    install -m644 ${srcdir}/network-wait-online@.service ${pkgdir}/usr/lib/systemd/system/
    install -m755 ${srcdir}/network-wait-online.sh ${pkgdir}/usr/bin/network-wait-online
}
