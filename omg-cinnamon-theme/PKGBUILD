# Maintainer: Ner0

pkgname=omg-cinnamon-theme
pkgver=1.0
pkgrel=2
pkgdesc="Cinnamon theme that matches omg-suite"
url="http://cinnamon-spices.linuxmint.com/themes/view/58"
license=('GPL')
arch=('any')
depends=('cinnamon')
optdepends=('omg-suite: A matching GTK theme [AUR]')
source=("http://cinnamon-spices.linuxmint.com/uploads/themes/PC7O-99ZZ-Y95Q.zip")
md5sums=('e00bc99f922cba2d7c62d8943c719538')

package() {
  find . -type f -not -name *~ -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}
