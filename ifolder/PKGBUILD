# Maintainer: Frane Bandov <frane@offbyte.com>

pkgname=ifolder
pkgver=3.4.6214.1
pkgrel=1
arch=('i686')
license="GPL"
pkgdesc="A file sharing solution for workgroup and enterprise environments"
url="http://www.ifolder.com"
options=('!libtool')
depends=('gtk-sharp-2' 'simias' 'gnome-sharp')
source=(http://forgeftp.novell.com/ifolder/client/3.4/20060802-0101/src/ifolder3-$pkgver.tar.gz \
	ifolder-desktop-application.patch
	iFolderApplication.patch)
#install=$pkgname.install
md5sums=('86b721dca14c57d8c3879067757095e7' '39e4ddc4d81f64af76e4969f0478d721' '0e7686465b30a41e3b44ace9b0352a7f')

build() {
  export MONO_SHARED_DIR=$startdir/src/.wabi
  mkdir -p $MONO_SHARED_DIR
  cd $startdir/src/ifolder3-$pkgver

  patch -p0 -i ../ifolder-desktop-application.patch
  patch -p0 -i ../iFolderApplication.patch
  
  ln -s help-linux help

  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  rm -r $MONO_SHARED_DIR
}
