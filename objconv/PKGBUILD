pkgname=objconv
pkgver=2.11
pkgrel=1
pkgdesc='A command-line disassembler supporting x86, x86-64, PE, COFF, ELF, OMF and Mach-O'
arch=('i686' 'x86_64')
url=http://www.agner.org/optimize/
license=('GPL')
depends=('glibc')
makedepends=('hd2u' 'unzip')
source=(http://www.agner.org/optimize/$pkgname.zip)
md5sums=('e465d1a3c1a2d19474bce20cce2fb8dc')

build() {
	cd "$srcdir"
	unzip source.zip -d source

	cd source
	dos2unix *

	echo -n 'Building ... '

	# As in ''${srcdir}/source/build.sh'':
	g++ -o objconv -O2 *.cpp

	echo 'Done.'

	install -D -m755 "$srcdir/source/objconv" "$pkgdir/usr/bin/objconv"
	install -D -m755 "$srcdir/objconv-instructions.pdf" "$pkgdir/usr/share/doc/$pkgname/manual.pdf"
}
