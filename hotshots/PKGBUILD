# Maintainer: gymka <gymka@archlinux.lt>
pkgname=hotshots
pkgver=1.1.1
pkgrel=1
pkgdesc="Screenshot tool with some editing features."
url="http://thehive.xbee.net"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=('qt4' 'libqxt')
source=("http://sourceforge.net/projects/hotshots/files/${pkgver}/HotShots-${pkgver}.zip")
md5sums=('9fadf550f8985ce3e641d383f40ec322')
build() {
  cd "${srcdir}/HotShots-${pkgver}/build"
  sed -i "s/\$1/\/usr/g" hotshots-desktop.sh
  sed -i "s@/usr/include/qxt/@/usr/include/@g" CMakeLists.txt
  cd "${srcdir}/HotShots-${pkgver}/src"
  sed -i "s/\/usr\/local\/share\/locale/\/usr\/share\/locale/g" MiscFunctions.cpp
}
package() {
  cd "${srcdir}/HotShots-${pkgver}/build"
  cmake CMakeLists.txt -DCMAKE_INSTALL_PREFIX:PATH="${pkgdir}/usr"
  make
  make install
  mkdir -p "${pkgdir}/usr/share/man/man1/"
  mv hotshots.1.gz "${pkgdir}/usr/share/man/man1/hotshots.1.gz"
  chmod 755 "${pkgdir}/usr/share/applications/hotshots.desktop"
}
