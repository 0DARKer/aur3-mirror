# Maintainer: Vinicius de Avila Jorge <vinicius.avila.jorge@gmail.com>
pkgname=hotshots
pkgver=2.0.0
pkgrel=0
pkgdesc="Screenshot tool with some editing features."
url="http://thehive.xbee.net"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=('qt4' 'cmake' 'libqxt')
source=("http://sourceforge.net/projects/hotshots/files/2.0.0/HotShots-2.0.0-src.zip")
md5sums=('0c173c4d8db500fa41fb6b51b7af9811')
build() {
cd "${srcdir}/HotShots-2.0.0-src/src"
sed -i "s/\/usr\/local\/share\/locale/\/usr\/share\/locale/g" MiscFunctions.cpp
cd "${srcdir}/HotShots-2.0.0-src/build"
sed -i "s/\$1/\/usr/g" hotshots-desktop.sh
sed -i "s/application/applications/g" HotShots.pro
cmake CMakeLists.txt -DCMAKE_INSTALL_PREFIX:PATH="${srcdir}/HotShots-2.0.0/usr"
make
make install
}
package() {
install -Dm755 "${srcdir}/HotShots-2.0.0/usr/bin/hotshots" "${pkgdir}/usr/bin/hotshots"
install -Dm755 "${srcdir}/HotShots-2.0.0/usr/share/applications/hotshots.desktop" "${pkgdir}/usr/share/applications/hotshots.desktop"
for file in `ls "${srcdir}/HotShots-2.0.0/usr/share/hotshots/locale"`; do
install -Dm644 "${srcdir}/HotShots-2.0.0/usr/share/hotshots/locale/$file" "${pkgdir}/usr/share/hotshots/locale/$file"
done
install -Dm644 "${srcdir}/HotShots-2.0.0/usr/share/hotshots/AUTHORS.txt" "${pkgdir}/usr/share/hotshots/AUTHORS.txt"
install -Dm644 "${srcdir}/HotShots-2.0.0/usr/share/hotshots/Changelog.txt" "${pkgdir}/usr/share/hotshots/Changelog.txt"
install -Dm644 "${srcdir}/HotShots-2.0.0/usr/share/hotshots/CREDITS.txt" "${pkgdir}/usr/share/hotshots/CREDITS.txt"
install -Dm644 "${srcdir}/HotShots-2.0.0/usr/share/hotshots/README.txt" "${pkgdir}/usr/share/hotshots/README.txt"
install -Dm644 "${srcdir}/HotShots-2.0.0/usr/share/mime/packages/hotshots.xml" "${pkgdir}/usr/share/mime/packages/hotshots.xml"
install -Dm644 "${srcdir}/HotShots-2.0.0/usr/share/pixmaps/hotshots.png" "${pkgdir}/usr/share/pixmaps/hotshots.png"
install -Dm644 "${srcdir}/HotShots-2.0.0-src/build/hotshots.1.gz" "${pkgdir}/usr/share/man/man1/hotshots.1.gz"
} 
