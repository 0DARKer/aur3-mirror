# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
pkgname=trytond-product-attribute
_pkgname=trytond_product_attribute
pkgver=3.2.0
_pkgdir=3.2
pkgrel=1
pkgdesc="The product_attribute module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=3.2' 'trytond-product>=3.2')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("4d63c88cced550aba0a2c8b0e56d48b8")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py build
}

package() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}