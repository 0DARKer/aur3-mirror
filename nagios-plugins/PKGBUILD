# Maintainer: Idares <idares@seznam.cz>

pkgname=nagios-plugins
pkgver=1.4.15
pkgrel=2
pkgdesc="Plugins are scripts and programs that perform host and service checks."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.nagiosplugins.org"
source=("http://downloads.sourceforge.net/nagiosplug/$pkgname-$pkgver.tar.gz")
makedepends=('net-snmp')
optdepends=('net-snmp: for SNMP checking.')
md5sums=('56abd6ade8aa860b38c4ca4a6ac5ab0d')
sha1sums=('1faab309c06d37e559490fd852ecb0dc8a8ab610')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr/share/nagios || return 1
	make || return 1
	make prefix=$startdir/pkg/usr/share/nagios install || return 1
	make prefix=$startdir/pkg/usr/share/nagios install-root || return 1
}

