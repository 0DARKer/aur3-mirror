# Contributor: Vojtech Horky <vojta . horky at-symbol seznam . cz>
pkgname=gawkextlib
pkgver=0.4.9
pkgrel=1
pkgdesc="gawk libraries for XML (xgawk), PostgreSQL, GD and MPFR."
url="http://gawkextlib.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gawk')
optdepends=(
	'postgresql-libs: PostgreSQL support'
	'mpfr: multiple-precision floating-point computations'
	'gd: bitmap image editing support'
	'expat: AWK-style XML processing'
)
source=("http://prdownloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('30ef6f340960b7e17742a83f63560605')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make install DESTDIR="$pkgdir"
}
