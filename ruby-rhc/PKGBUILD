# Maintainer: OmeGa <omega at mailoo dot org>
# Contributor: Guilherme "nirev" Nogueira <guilherme@nirev.org>

pkgname=ruby-rhc
_gemname=rhc
pkgver=1.1.11
pkgrel=1
pkgdesc="The client tools for the OpenShift platform that allow for application management."
arch=('any')
url="https://openshift.redhat.com/app/express"
license=('APACHE-2.0')
depends=('ruby' 'ruby-archive-tar-minitar' 'ruby-commander' 'ruby-highline' 'ruby-net-ssh' 'ruby-open4' 'ruby-rest-client' 'ruby-test-unit')
source=("http://rubygems.org/downloads/${_gemname}-${pkgver}.gem")
sha1sums=('ac4eab28f24649a643f044380b79f8f0f885df92')
noextract=("${_gemname}-$pkgver.gem")

build() {
  cd $srcdir
  export HOME=/tmp
  export RHC_RPMBUILD=1
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "${pkgdir}${_gemdir}" -n "${pkgdir}/usr/bin" ${_gemname}-$pkgver.gem
}

