pkgname='perl-devel-cover'
pkgver='1.01'
pkgrel='1'
pkgdesc="Code coverage metrics for Perl"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
makedepends=('perl-test-warn')
url='http://search.cpan.org/dist/Devel-Cover'
source=('http://search.cpan.org/CPAN/authors/id/P/PJ/PJCJ/Devel-Cover-1.01.tar.gz')
md5sums=('c9efa67bf600d1d8dfa5a73761e15fb7')
sha512sums=('98d8084d640cedbefd55c1662eaac3f5ba9e56d3098f1a6c3ce2f9553752c2c2a9469c799f7936ba2d6796b2f1f7007ca1320ce434ff3ffcd81331d2dd7ca7d1')
_distdir="Devel-Cover-1.01"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

