pkgname='perl-devel-cover'
pkgver='0.67'
pkgrel='1'
pkgdesc="Code coverage metrics for Perl"
arch=('i686' 'x86_64')
url='http://search.cpan.org/dist/Devel-Cover'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/P/PJ/PJCJ/Devel-Cover-0.67.tar.gz')
md5sums=('301b2a7a9a274f6cbe34f479553bf146')

build() {
  DIST_DIR="${srcdir}/Devel-Cover-0.67"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

