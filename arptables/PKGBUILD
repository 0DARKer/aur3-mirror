# Contributor: Michal Soltys <soltys@ziu.info>
pkgname=arptables
pkgver='v0.0.3.4'
_realver='v0.0.3-4'
pkgrel=1
pkgdesc="ARP filtering utility."
arch=(i686 x86_64)
backup=(etc/conf.d/arptables)
url="http://ebtables.sourceforge.net/"
depends=('glibc' 'perl')
license=('GPL')
source=(
	http://downloads.sourceforge.net/ebtables/${pkgname}-v0.0.3-4.tar.gz
	arptables.sh
	)

md5sums=('1d4ab05761f063b0751645d8f2b8f8e5'
         'b2e57fcd9d96a4a0978db5ac6f655b13')
build() {
  cd ${startdir}/src/${pkgname}-${_realver}
  make || return 1
  mkdir -p ${startdir}/pkg/etc/rc.d
  mkdir -p ${startdir}/pkg/etc/arptables
  make install \
	DESTDIR=${startdir}/pkg \
	PREFIX=/usr \
	LIBDIR=/usr/lib/arptables \
	BINDIR=/usr/sbin \
	MANDIR=/usr/share/man \
	INITDIR=/etc/rc.d \
	SYSCONFIGDIR=/etc/arptables || return 1
  #use adjusted script
  install -o root -m0755 -D ${startdir}/arptables.sh ${startdir}/pkg/etc/rc.d/arptables
}
