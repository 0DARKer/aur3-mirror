# Maintainer: Daniel Seymour <dannyseeless at gmail dot com>

pkgname=mediabrowser-server
pkgver=3.0.5390
pkgrel=1
pkgdesc="The MediaBrowser server"
arch=('i686' 'x86_64')
url="http://www.mediabrowser.tv"
license=('GPL')
groups=()
depends=('mono' 'libgdiplus')
optdepends=()
install=mediabrowser-server.install
source=("https://github.com/MediaBrowser/MediaBrowser/archive/${pkgver}.tar.gz" 
        "mediabrowser.service" "mediabrowser")
md5sums=('2357e67432e98fc500cb06294029dc3e'
         'fb4626c1c3b878ab82622fdcc4849277'
         'a546c362bd2f25443e49024c8a969937')

package() {
  mkdir -p ${pkgdir}/opt/${pkgname}
  mkdir -p ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}/usr/lib/systemd/system

  cd ${srcdir}/MediaBrowser-${pkgver}
  mkdir -p "MediaBrowser.Server.Mono/bin/Release Mono"
  sudo mozroots --import --sync
  sudo mono .nuget/NuGet.exe update -self
  sudo xbuild /p:Configuration="Release Mono" /p:Platform="Any CPU" /t:build MediaBrowser.Mono.sln

  cp -r ${srcdir}/MediaBrowser-${pkgver}/MediaBrowser.Server.Mono/bin/Release\ Mono/* ${pkgdir}/opt/${pkgname}/
  install -Dm755 ${srcdir}/mediabrowser ${pkgdir}/usr/bin
  install -Dm644 ${srcdir}/mediabrowser.service ${pkgdir}/usr/lib/systemd/system
}
