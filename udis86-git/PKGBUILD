# Maintainer: Bogdan Szczurek <thebodzio@gmail.com>

_gitname=udis86
#_gitroot=git://github.com/vmt/$_gitname.git

pkgname=$_gitname-git
pkgver=c709c71
pkgrel=1
pkgdesc="Disassembler library for x86"
arch=('i686', 'x86_64')
url="http://udis86.sourceforge.net/"
license=('BSD')
makedepends=('git')
provides=('udis86')
conflicts=('udis86', 'udis86-bin')
source=(git://github.com/vmt/$_gitname.git)
md5sums=(SKIP)

pkgver() {
  cd $srcdir/$_gitname
  # Use the tag of the last commit
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $_gitname

  # Patches

  # Handle libtool properly whether automake is older than 1.12 or not
  msg "Patching configure.ac"
  sed -i "10i# Initialize libtool\nm4_ifdef([AM_PROG_AR], [AM_PROG_AR])\n" configure.ac

  # Mask problems with tests/Makefile.am since we're not doing any post-build testing
  msg "Patching tests/Makefile.am"
  sed -i "s/^\(.*call.*\)$/#\1/" tests/Makefile.am

  # Actual building...
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd $_gitname
  make DESTDIR=$pkgdir install

  # Taking care of the license
  install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:
