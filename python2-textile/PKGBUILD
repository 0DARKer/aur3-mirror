# $Id: $
# Maintainer: kang <kang@insecure.ws>

pkgname=python2-textile
pkgver=2.1.5
pkgrel=1
pkgdesc='Textile processing for python'
arch=('any')
url='http://pypi.python.org/pypi/textile'
license=('GPL')
depends=('python2')
source=("http://pypi.python.org/packages/source/t/textile/textile-$pkgver.tar.gz")
sha256sums=('b22a2e2fcb0e6b55a39b181d978d4b7429abf8504b09442dc55756fa98d3bcf6')

build() {
  cd "textile-$pkgver"

  python2 setup.py build
}

package() {
  cd "textile-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}

