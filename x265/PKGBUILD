# Maintainer: kfgz <kfgz at interia pl>

pkgname=x265
pkgver=20130723
pkgrel=1
pkgdesc="free H265/HEVC video encoder"
arch=('i686' 'x86_64')
license=('GPL')
makedepends=('yasm' 'cmake')
url="https://bitbucket.org/multicoreware/x265"
source=(https://bitbucket.org/multicoreware/x265/get/dabc5df15515.zip)
md5sums=('acb53d66c013161079576e4ca9f30a7b')

build() {
  cd "${srcdir}"/multicoreware-${pkgname}-dabc5df15515
  cmake "${srcdir}"/multicoreware-${pkgname}-dabc5df15515/source
  make
}
package() {
  install -D -m755 "${srcdir}"/multicoreware-${pkgname}-dabc5df15515/x265 "${pkgdir}"/usr/bin/x265
}
