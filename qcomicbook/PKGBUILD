#contributor: Valheru <valheru AT facticius DOT net>

pkgname=qcomicbook
pkgver=0.7.2
pkgrel=2
pkgdesc="QComicBook is a viewer for comic book archives"
url="http://qcomicbook.linux-projects.net"
arch=('i686' 'x86_64')
license="GPL"
depends=('qt>=4' 'unrar' 'p7zip' 'tar')
optdepends=('unzip' 'unace')
makedepends=('pkg-config' 'cmake')
source=(http://qcomicbook.linux-projects.net/releases/$pkgname-$pkgver.tar.gz)
md5sums=('179b66b1a56b6ef393b78b001a1019e6')

build() {
   cd $startdir/src/$pkgname-$pkgver
   cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
   make || return 1
   make DESTDIR=$startdir/pkg install
}
