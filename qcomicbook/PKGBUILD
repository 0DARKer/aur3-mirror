pkgname=qcomicbook
pkgver=0.8.1
pkgrel=1
pkgdesc="QComicBook is a viewer for comic book archives"
url="http://qcomicbook.linux-projects.net"
arch=('i686' 'x86_64')
license="GPL"
depends=('qt>=4' 'unrar' 'p7zip' 'tar' 'poppler-qt')
optdepends=('unzip' 'unace')
makedepends=('cmake')
source=("http://qcomicbook.linux-projects.net/releases/$pkgname-$pkgver.tar.gz")
md5sums=('65507d55ea900ef2f386ca5494ea73ed')

build() {
   cd "$srcdir/$pkgname-$pkgver"
   rm -rf build-dir
   mkdir -p build-dir
   cd build-dir
   cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
   make
}

package() {
   cd "$srcdir/$pkgname-$pkgver/build-dir"
   make DESTDIR="$pkgdir" install
}