# Maintainer: Moritz Bunkus <moritz@bunkus.org>

pkgname='perl-mail-audit'
pkgver='2.227'
pkgrel='1'
pkgdesc="Extensible and flexible object <-> relational mapper."
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-file-tempdir' 'perl-file-homedir' 'perl-mailtools' 'perl-mime-entity')
url='http://search.cpan.org/dist/Mail-Audit'
source=('http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Mail-Audit-2.227.tar.gz')
md5sums=('4780a6fb118887b9bebb905cf63f4c25')
sha512sums=('68e7e1d667c78f8a0d1656372cae857ebc279ffc9d959b91f3f149a9ebabd3d52468b27d677c4d3f220eb43f6b9fe1e5c93c2debec1d910da3e0c78e276da613')

build() {
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  cd "${srcdir}/Mail-Audit-${pkgver}"
  /usr/bin/perl Makefile.PL
  make
}

check() {
  cd "${srcdir}/Mail-Audit-${pkgver}"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
  make test
}

package() {
  cd "${srcdir}/Mail-Audit-${pkgver}"
  make install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
