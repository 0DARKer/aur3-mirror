pkgname='perl-cgi-emulate-psgi'
pkgver='0.10'
pkgrel='1'
pkgdesc="PSGI adapter for CGI"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-libwww')
url='http://search.cpan.org/dist/CGI-Emulate-PSGI'
source=('http://search.cpan.org/CPAN/authors/id/M/MI/MIYAGAWA/CGI-Emulate-PSGI-0.10.tar.gz')
md5sums=('9a2042692cb410cb7d8b094094d139d9')

build() {
  PERL=/usr/bin/perl
  DIST_DIR="${srcdir}/CGI-Emulate-PSGI-0.10"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null

  { cd "$DIST_DIR" &&
    $PERL Makefile.PL &&
    make &&
    make test &&
    make install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
