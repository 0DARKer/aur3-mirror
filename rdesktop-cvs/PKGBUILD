# Contributor: Frank Oosterhuis <frank@scriptzone.nl>

pkgname=rdesktop-cvs
pkgver=20060615
pkgrel=1
pkgdesc="rdesktop is used to connect to windows terminal servers (now with vista support)"
url="http://sourceforge.net/projects/rdesktop"
license="GPL"
depends=('libx11' 'openssl')
makedepends=(cvs indent)
conflicts=(rdesktop)
provides=(rdesktop)
install=
source=
md5sums=

_cvsroot=":pserver:anonymous@rdesktop.cvs.sourceforge.net:/cvsroot/rdesktop"
_cvsmod="rdesktop"

build() {
  cd $startdir/src/
  
  msg "Connecting to SF cvs"
  cvs -z3 -d $_cvsroot co -D $pkgver -f $_cvsmod
  msg "CVS checkout done... or timeout :o"

  cd $_cvsmod 
  ./bootstrap
  ./configure --prefix=/usr
  
  make || return 1
  make DESTDIR=$startdir/pkg install
}
