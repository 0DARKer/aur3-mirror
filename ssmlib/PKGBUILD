# Maintainer: Alexander Minges <alexander.minges@gmail.com>
pkgname=ssmlib
_pkgname=ssm
pkgver=1.1
pkgrel=1
pkgdesc="A C++ toolkit for superposition of macromolecules"
arch=('i686' 'x86_64')
url="https://launchpad.net/ssm"
license=('LGPL')
source=(https://launchpad.net/ssm/trunk/1.1/+download/$_pkgname-$pkgver.tar.gz)
sha256sums=('975e4e67838d2b44d1c66edff2f7b7802696e80e68bd5238ad0d23834a4583e9')

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
} 
