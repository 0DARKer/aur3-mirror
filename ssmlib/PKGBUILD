# Maintainer: Alexander Minges <alexander.minges@gmail.com>
pkgname=ssmlib
_pkgname=ssm
pkgver=1.1
pkgrel=3
pkgdesc="A C++ toolkit for superposition of macromolecules"
arch=('i686' 'x86_64')
url="https://launchpad.net/ssm"
license=('LGPL')
depends=('mmdb')
source=(https://launchpad.net/ssm/trunk/1.1/+download/$_pkgname-$pkgver.tar.gz
        ssm-1.1-pc.patch)
sha256sums=('975e4e67838d2b44d1c66edff2f7b7802696e80e68bd5238ad0d23834a4583e9'
            '44f52741c597808518d1ac10d5c56cbe950b01d86e40a6e69628d3a2e3884982')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  patch -Np1 -i $srcdir/ssm-1.1-pc.patch
  ./configure --prefix=/usr --with-mmdb=/usr
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
} 
