# Maintainer: Toutoul <labstag@gmail.com>
pkgname=discworld-fr
pkgver=1.0
pkgrel=1
pkgdesc="French version of Discworld to SCUMMVM"
arch=('i686' 'x86_64')
url="http://www.scummvm.org"
license=('GPL2')
groups=()
depends=('scummvm' 'p7zip')
makedepends=()
install=
changelog=
source=('http://www.abandonware-france.org/ltf_abandon/clic.php?idtele=1572' 'icon.jpg') 
md5sums=('6680bb6eb541c5941815a955f02237f9' '038f2e32f04b09d1b157a1a2d14e5b68')
noextract=()
package(){
	cd "${srcdir}/"
	cp -ar icon.jpg "${pkgdir}/opt/scummvm/${pkgname}.jpg"
	printf "#!${SHELL}
if whereis scummvm>/dev/null 2>&1;
	then
		mkdir ~/.scummvm/
		scummvm -F --savepath=~/.scummvm/ --path=/opt/scummv/${pkgname}/ dw
	else
		echo '==> Please get sure to have ScummVM installed and have it in your PATH array.'
fi
return \$?" >> "/${pkgdir}/usr/bin/${pkgname}.sh"
	chmod +x "/${pkgdir}/usr/bin/${pkgname}.sh"
	ln -s "${pkgname}.sh /${pkgdir}/usr/bin/${pkgname}"
	printf "[Desktop Entry]
Version=${pkgver}
Type=Application
Name=${pkgname}
Comment=${pkgdesc}
Exec=/usr/bin/${pkgname}
Icon=/opt/scummvm/${pkgname}.jpg
Categories=Game;
Terminal=false
StartupNotify=false" >> "/${pkgdir}/usr/share/applications/${pkgname}.desktop"
	7z x clic.php?idtele=1572
	cd "Discwld/"
	mkdir -p -m755  "${pkgdir}/opt/scummvm/${pkgname}/"
	cp -ar *   "${pkgdir}/opt/scummvm/${pkgname}/"
}

