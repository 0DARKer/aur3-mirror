# Maintainer: Toutoul <labstag@gmail.com>
pkgname=discworld-fr
pkgver=1.0.1
pkgrel=1
pkgdesc="French version of Discworld to SCUMMVM"
arch=('i686' 'x86_64')
url="http://www.scummvm.org"
license=('GPL2')
groups=()
depends=('scummvm')
makedepends=()
install=
changelog=
source=("http://www.abandonware-france.org/ltf_abandon/clic.php?idtele=1572") 
md5sums=('6680bb6eb541c5941815a955f02237f9')
noextract=()
package() {
	cd ${srcdir}/
	7z x ${srcdir}/jeu-00691-discworld-pcdos.7z
	cd ${srcdir}/Discwld/
	mkdir -p -m755  "${pkgdir}/opt/scummvm/${pkgname}/"
	cp -ar Discwld/*   "${pkgdir}/opt/scummvm/${pkgname}/"
	scummvm -F --savepath=~/.scummvm/ --path="${pkgname}/opt/scummvm/${pkgname}/" -q fr dw
}
