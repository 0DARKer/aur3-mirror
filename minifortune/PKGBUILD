# Maintainer: Vanya A. Sergeev <vsergeev@gmail.com>
pkgname=minifortune
pkgver=2.2
pkgrel=1
pkgdesc="A minimal fortune-mod clone."
arch=('i686' 'x86_64')
url="https://github.com/vsergeev/minifortune"
license=('MIT')
depends=('glibc')
makedepends=('git')
source=("git://github.com/vsergeev/minifortune.git#commit=v2.2")
sha256sums=('SKIP')
_gitname="minifortune"

build() {
	cd "$srcdir/$_gitname"
	make
}

package() {
	cd "$srcdir/$_gitname"
	make DESTDIR="$pkgdir/" install
}
