# Maintainer: Vanya A. Sergeev <vsergeev at gmail dot com>
pkgname=minifortune
pkgver=2.2
pkgrel=3
epoch=
pkgdesc="A minimal fortune-mod clone"
arch=('i686' 'x86_64')
url="https://github.com/vsergeev/minifortune"
license=('MIT')
depends=('glibc')

source=("https://github.com/vsergeev/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('d81325ef924b82a8eea60a1a2a1edd09')
sha1sums=('caeaba28b2973809b811a4d572feaba2419d25de')
sha256sums=('003c5e2678408cc202eb6513249b56bbf57effdbd09481037adcb49e0da7cc5c')
sha384sums=('4adaeec81a62ed22a357a822940a34e625d698c2a2e1ec3128164621b2716f8942a7ba3412e03bb81956e6a91669dc49')
sha512sums=('b3e59a58fb9c3cfeb3c42b724e81dc09269b8251b847d2395338c59be79c15be46e4b769d7af30e8e5ae2ae09c835815d9dc1283d381e8e8e83c27050c785329')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    install -D -s -m 0755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
