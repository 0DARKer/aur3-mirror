# Contributor: DonVla <donvla@users.sourceforge.net>

pkgname=new-murrine-configurator
pkgver=1.4
pkgrel=3
pkgdesc="New Configurator for Murrine GTK Engine"
arch=('i686' 'x86_64')
url="http://www.cimitan.com/murrine"
license="GPL"
depends=('pygtk')
provides=('murrine-configurator')
conflicts=('murrine-configurator')
source=(http://www.cimitan.com/murrine/files/nmc.tar_3.bz2 newmurrineconfigurator.bash)
md5sums=('9bc4c2c79fa4febe7804e8d97615c8f0'
         'ed03e304bbb8310e3adaaea0f32b47f3')
sha256sums=('7a9c8eeb12263fe1cfdfe576b10451365dc18eb77d43e7b49be0905c3e29f0f7'
            '1ccd642c604265556b6e3462c584933bb38f0aa1d2182c5419439de65c8bf46c')

build() {
  cd "$srcdir/newmurrineconfigurator/src"
  install -v -d  $pkgdir/usr/{bin,share/applications,share/nmc,share/pixmaps}
  install -v -m 0644 murrine-configurator.desktop $pkgdir/usr/share/applications/murrine-configurator.desktop
  install -v -m 0644 murrine-configurator.png $pkgdir/usr/share/nmc/murrine-configurator.png
  install -v -m 0644 *.glade $pkgdir/usr/share/nmc
  install -v -m 0644 *.py* $pkgdir/usr/share/nmc
  install -v -m 0755 $srcdir/newmurrineconfigurator.bash $pkgdir/usr/bin/newmurrineconfigurator
}
