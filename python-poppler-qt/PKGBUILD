# Maintainer: Philip Lorenz <lorenzph@users.sourceforge.net>
pkgname=python-poppler-qt
_realpkgname=python-poppler-qt4
pkgver=0.16.3
pkgrel=1
pkgdesc="A Python 3 binding to poppler-qt"
arch=('i686' 'x86_64')
url="http://code.google.com/p/python-poppler-qt4/"
license=('LGPL')
groups=()
depends=(python-pyqt4 poppler-qt python)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(http://python-poppler-qt4.googlecode.com/files/$_realpkgname-$pkgver.tar.gz
        python-poppler-qt.patch)
noextract=()

md5sums=('179cbce3aaefe739244030d16ddb7ee6'
         'b3fdf09ab8ec6a37f45f0ab362a54353')

build() {
  cd "$srcdir/$_realpkgname-$pkgver"

  patch -p1 -i $srcdir/$pkgname.patch

  python setup.py build
}

package() {
  cd "$srcdir/$_realpkgname-$pkgver"

  python setup.py install --root="${pkgdir}"
}

