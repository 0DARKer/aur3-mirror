pkgname=perl-html-todocbook
_realname=HTML-ToDocBook
_dirname=html2dbk
pkgver=0.03
pkgrel=1
pkgdesc="Perl/CPAN Module HTML::ToDocBook : Converts an XHTML file into DocBook."
arch=(i686 x86_64)
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0' 'perl-html-simpleparse' 'perl-xml-libxml' 'perl-xml-libxslt')  
url="http://search.cpan.org/dist/${_realname}/"
options=(!emptydirs)
provides=('html-todocbook' '${_dirname}')
source=(http://search.cpan.org/CPAN/authors/id/R/RU/RUBYKAT/${_dirname}-0.03.tar.gz)
md5sums=('757e2a57afa7768e1a8f2db27a468f86')

build() {
  cd ${srcdir}/${_dirname}-${pkgver}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make  || return 1
  make install DESTDIR=${pkgdir} || return 1

  # remove perllocal.pod and .packlist
  find ${pkgdir} -name perllocal.pod -delete
  find ${pkgdir} -name .packlist -delete
}
