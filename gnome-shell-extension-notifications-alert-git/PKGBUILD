#Maintainer: foalsrock <foalsrock at gmail dot com>

pkgname=gnome-shell-extension-notifications-alert-git
pkgver=20120418
pkgrel=1
pkgdesc="Paints the GNOME Shell user's menu icon red on notification"
arch=('any')
url="https://github.com/hackedbellini/Gnome-Shell-Notifications-Alert"
license=('GPL')
depends=('gnome-shell')
makedepends=('git')
groups=('gnome-shell-extensions')

_gitroot="git://github.com/hackedbellini/Gnome-Shell-Notifications-Alert.git"
_gitname="Gnome-Shell-Notifications-Alert"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
}

package() {
    uuid="notifications-alert-on-user-menu@hackedbellini.gmail.com"
    cd "${srcdir}/${_gitname}"

    install -Dm644 "metadata.json" "${pkgdir}/usr/share/gnome-shell/extensions/${uuid}/metadata.json"
    install -m644 "extension.js" "${pkgdir}/usr/share/gnome-shell/extensions/${uuid}/extension.js"
    install -m644 "stylesheet.css" "${pkgdir}/usr/share/gnome-shell/extensions/${uuid}/stylesheet.css"

    install -Dm644 "COPYING" "${pkgdir}/usr/share/licenses/gnome-shell-extension-notifications-alert-git/COPYING"
}
