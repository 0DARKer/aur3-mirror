# Maintainer: Pierre-Olivier Vauboin <povauboin@gmail.com>

pkgname=cardpeek
pkgver=0.8.1
pkgrel=1
pkgdesc="A tool to read the contents of smartcards"
arch=(i686 x86_64)
url="http://pannetrat.com/Cardpeek"
license=('GPL')
depends=('gtk3' 'lua' 'pcsclite' 'curl')
install=cardpeek.install
source=("https://cardpeek.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
sha1sums=('02c64f3cef8336351f431094c92701eeeb6af1c1')

build() {
  cd ${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="$pkgdir/" install
}
