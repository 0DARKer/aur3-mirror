# Contributor: Nick Ã˜stergaard <oe.nick at gmail dot com>

pkgname=openocd-git
pkgver=20121230
pkgrel=1
pkgdesc="Debugging, in-system programming and boundary-scan testing for embedded target devices (git version)"
arch=('i686' 'x86_64')
url="http://openocd.sourceforge.net/"
license=('GPL')
depends=('libftdi')
makedepends=('git' 'automake>=1.11' 'tcl')
options=(!strip)
install=openocd-git.install
provides=('openocd')
conflicts=('openocd')
source=('version.texi')
md5sums=('505b077ac8a11e19d170df43d169ad66')

_gitroot=git://git.code.sf.net/p/openocd/code
_gitname=openocd
_features=(amtjtagaccel arm-jtag-ew buspirate ep93xxat91rm9200gw16012 ft2232_libftdi ftdi jlink oocd_trace parport presto_libftdi rlink stlink ulink usbprog vsllink)

build() {
  cd ${srcdir}

  msg "Connecting to GIT server..."
  if [[ -d $_gitname ]]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth=1 $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  msg <<EOF
>>>>> WARNING WARNING WARNING <<<<<

During configuration, additional connections will be made to fetch
software from http://repo.or.cz/.

If you do not want this, stop the process NOW.

The build will continue in 10 seconds.
EOF
  sleep 10

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"

  # fix missing version.texi
  cp "$srcdir/version.texi" "$srcdir/$_gitname-build/doc/"

  cd "$srcdir/$_gitname-build"

  ./bootstrap
  ./configure --prefix=/usr ${_features[@]/#/--enable-} --disable-werror

  # ./configure \
  # 	--disable-werror \
  # 	--prefix=/usr \
  # 	--enable-maintainer-mode \
  # 	--enable-parport \
  # 	--enable-ft2232_libftdi \
  # 	--enable-amtjtagaccel \
  # 	--enable-ep93xx \
  # 	--enable-at91rm9200 \
  # 	--enable-gw16012 \
  # 	--enable-presto_libftdi \
  # 	--enable-usbprog \
  # 	--enable-oocd_trace \
  # 	--enable-jlink \
  # 	--enable-vsllink \
  # 	--enable-rlink \
  # 	--enable-stlink \
  # 	--enable-arm-jtag-ew \
  # 	--enable-buspirate \
  # 	--enable-usb_blaster_libftdi \
  # 	--enable-osbdm

  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR=${pkgdir} install 
}
