pkgname=rosa-icons
pkgver=1.0.11
pkgrel=1
pkgdesc="Rosa icons theme. As seen since Mandriva 2011."
arch=('any')
url="http://rosalab.ru/"
license=('GPL')
makedepends=('rpmextract')
source=(ftp://distrib-coffee.ipsl.jussieu.fr/pub/linux/MandrivaLinux/devel/cooker/i586/media/main/release/$pkgname-$pkgver-1-mdv2012.0.noarch.rpm)
md5sums=('e8322bca990c0735cd0b2f1b7384c777')

build() {
  cd $srcdir
  rpmextract.sh $pkgname-$pkgver-1-mdv2012.0.noarch.rpm
  mv usr/ $pkgdir
}
