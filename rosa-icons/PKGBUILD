pkgname=rosa-icons
pkgver=1.0.27
pkgrel=4
pkgdesc="Rosa icons theme."
arch=('any')
url="http://rosalab.ru/"
license=('GPL')
makedepends=('rpmextract')
source=("http://mirror.yandex.ru/rosa/rosa2012lts/repository/i586/main/release/${pkgname}-${pkgver}-1.src.rpm")
md5sums=('f5cc3796904276b34d0ce09e9cd23364')

build() {
  cd "${srcdir}"
  rpmextract.sh "${pkgname}-${pkgver}-1.src.rpm"
  install -dm755 "${pkgdir}/usr/share/icons"
  tar zxf "rosa-${pkgver}.tar.gz"
  mv -v "rosa-${pkgver}" "${pkgdir}/usr/share/icons"

}
