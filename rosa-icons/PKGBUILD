pkgname=rosa-icons
pkgver=1.0.27
pkgrel=1
pkgdesc="Rosa icons theme."
arch=('any')
url="http://rosalab.ru/"
license=('GPL')
makedepends=('rpmextract')
source=(http://mirror.yandex.ru/rosa/rosa2012lts/repository/i586/main/release/$pkgname-$pkgver-1-rosa.lts2012.0.noarch.rpm)
md5sums=('966d9e3db7c5ce0eed5dedd68b572c83')

build() {
  cd $srcdir
  rpmextract.sh $pkgname-$pkgver-1-rosa.lts2012.0.noarch.rpm
  mv usr/ $pkgdir
}
