pkgname=kate-syntax-sweave
pkgver=0.1
pkgrel=1
pkgdesc="Sweave syntax highlighting for KDE Katepart."
arch=('i686' 'x86_64')
url=('https://aur.archlinux.org/packages/kate-syntax-sweave')
license=('LGPL')
depends=('kdesdk-kate')
source=('sweave.xml')
md5sums=('8b146c17bd1bf64d284e0b22f9da2e5d')

build() {
        cd $srcdir
}

package() {
  install -Dm755 "$srcdir"/sweave.xml "$pkgdir"/usr/share/apps/katepart/syntax/sweave.xml
}
