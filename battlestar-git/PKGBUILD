# Maintainer: Alexander RÃ¸dseth <rodseth@gmail.com>

pkgname=battlestar-git
pkgver=0.1
pkgrel=1
pkgdesc='Programming language for creating tiny executables'
arch=('x86_64' 'i686')
url='http://github.com/xyproto/battlestar'
license=('MIT')
makedepends=('go' 'git')
depends=('yasm' 'gcc' 'elfkickers')
source=("bts::git://github.com/xyproto/battlestar.git#tag=$pkgver")
md5sums=('SKIP')

build() {
  make -C bts
}

package() {
  make -C bts install DESTDIR="$pkgdir"
  install -Dm644 bts/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -d "$pkgdir/usr/share/doc/$pkgname"
  cp -r bts/samples "$pkgdir/usr/share/doc/$pkgname/"
  cp -r bts/samples32 "$pkgdir/usr/share/doc/$pkgname/"
  cp -r bts/samples64 "$pkgdir/usr/share/doc/$pkgname/"
  install -Dm644 bts/tutorial.md "$pkgdir/usr/share/doc/$pkgname/tutorial.md"
}

# vim:set ts=2 sw=2 et:
