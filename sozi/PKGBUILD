# Contributor: Emmanuel Gil Peyrot <linkmauve@linkmauve.fr>

pkgname=sozi
pkgver=12.05
pkgrel=1
_extraver='08120927'
pkgdesc='An Inkscape extension that creates SVG-based presentations, using JavaScript'
url="http://${pkgname}.baierouge.fr/"
license=('GPL3' 'MIT')
depends=('inkscape' 'pygtk' 'python2-lxml')
source=("https://github.com/downloads/senshu/Sozi/${pkgname}-release-${pkgver}-${_extraver}.zip")
arch=('any')
md5sums=('299850fd2c2ed7f25db6f0cdfff43e40')
sha1sums=('81bb720147892690539e567e6937cb21b9e09e85')

build() {
	mkdir -p ${pkgdir}/usr/share/inkscape/extensions

	install -D -m755 *.py ${pkgdir}/usr/share/inkscape/extensions
	install -D -m644 *.css *.inx *.js *.png ${pkgdir}/usr/share/inkscape/extensions
}
