# Contributor: Emmanuel Gil Peyrot <linkmauve@linkmauve.fr>

pkgname=sozi
pkgver=10.11
pkgrel=1
pkgdesc='An Inkscape extension that creates SVG-based presentations, using JavaScript'
url="http://${pkgname}.baierouge.fr/"
license='GPL3'
depends=('inkscape' 'pygtk' 'python-lxml')
source=(http://gist.github.com/downloads/senshu/Sozi/${pkgname}-release-${pkgver}.zip)
arch=('any')
md5sums=('332ae1c4f6d698ff9f8b4da9be87fe54')
sha1sums=('a1d860fec24bc453a2ae89d0f8455e88233a67ba')

build() {
	mkdir -p ${pkgdir}/usr/share/inkscape/extensions

	install -D -m755 *.py ${pkgdir}/usr/share/inkscape/extensions || return 1
	install -D -m644 *.inx *.js ${pkgdir}/usr/share/inkscape/extensions || return 1
}
