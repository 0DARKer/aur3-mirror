# Contributor: Emmanuel Gil Peyrot <linkmauve@linkmauve.fr>

pkgname=sozi
pkgver=11.05
pkgrel=1
_extraver='14204136'
pkgdesc='An Inkscape extension that creates SVG-based presentations, using JavaScript'
url="http://${pkgname}.baierouge.fr/"
license=('GPL3')
depends=('inkscape' 'pygtk' 'python-lxml')
source=("http://gist.github.com/downloads/senshu/Sozi/${pkgname}-release-${pkgver}-${_extraver}.zip")
arch=('any')
md5sums=('3a1793beef3befe238a67760840d31c0')
sha1sums=('b8223e7ce3ad8090a8d3e7e6b850d1b1e09e7136')

build() {
	mkdir -p ${pkgdir}/usr/share/inkscape/extensions

	install -D -m755 *.py ${pkgdir}/usr/share/inkscape/extensions
	install -D -m644 *.css *.inx *.js ${pkgdir}/usr/share/inkscape/extensions
}
