pkgname=linux_logo_archcustom
pkgver=5.06
pkgrel=1
pkgdesc="Text-based logo and system information program (Arch Custom Version)"
arch=('i686' 'x86_64')
url="http://www.deater.net/weave/vmwprod/linux_logo"
license=('GPL')
depends=('glibc')
replaces=('linux_logo')
source=(http://www.deater.net/weave/vmwprod/linux_logo/linux_logo-$pkgver.tar.gz arch.logo)
md5sums=('31014ac5a1660926ae16b88399f4233d' '801448607832ddaf04bf6708e8edcfed')

build() {
  cd "$startdir/src/linux_logo-$pkgver"
  install -m644 ../arch.logo ./logos/distributions/
  echo "./logos/distributions/arch.logo" > logo_config
  echo "./logos/classic.logo" >> logo_config
  echo "./logos/banner.logo" >> logo_config
  ./configure --prefix=$startdir/pkg/usr
  make || return 1
  make DESTDIR="$startdir/pkg" install
}


