pkgname=django-simple-captcha
pkgver=0.2.0
pkgrel=2
pkgdesc="Django Simple Captcha is an extremely simple, yet highly customizable Django application to add captcha images to any Django form."
arch=(any)
url="http://code.google.com/p/django-simple-captcha/"
license=("MIT")
depends=('python' 'django' 'python-imaging')
makedepends=()
optdepends=("flite: required for text-to-speech (audio) output")
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://django-simple-captcha.googlecode.com/files/$pkgname-$pkgver.tar.gz")
#source=("$pkgname-$pkgver.tar.gz")
sha1sums=('91e07000def49bf23f36e88ee1cce0a1f94fb4ea')
noextract=()


build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1

  # Remember to install licenses if the license is not a common license!
  install -D -m644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}


