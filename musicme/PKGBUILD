# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Edward <yy890521@gmail.com>
pkgname=musicme
pkgver=1.0.1
pkgrel=1
pkgdesc=""
arch=(i686)
url="http://code.google.com/p/musicme4linux"
license=('GPL')
groups=()
depends=('gtk2' 'gstreamer0.10' 'gstreamer0.10-base' 'gstreamer0.10-ffmpeg')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('020d8fd2732fb92debc9da3cf0dba32e') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
