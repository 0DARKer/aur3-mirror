# Contributor: shamrok <szamrok@gmail.com>
 
pkgname=systemtrayapplet2
pkgver=0.51
pkgrel=1
pkgdesc="KDE System Tray with icon hiding support, smooth scrolling and icon grouping." 
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php?content=17732" 
license=('BSD')
depends=('kdelibs') 
source=(http://kde-apps.org/CONTENT/content-files/17732-$pkgname.tar.bz2) 
md5sums=('d6cf3d4a4129b72c014eef19dcc384a6') 

build() { 
     source /etc/profile.d/qt3.sh
     cd $startdir/src/$pkgname
     ./configure --prefix=/opt/kde 
     make || return 1 
     make DESTDIR=$startdir/pkg install 
}  
