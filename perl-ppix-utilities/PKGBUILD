# Contributor: 3ED <krzysztof1987 at gmail dot com>

skiptest=0

pkgname='perl-ppix-utilities'
_pkgname='PPIx-Utilities'
pkgver='1.001000'
pkgrel='1'
pkgdesc="Extensions to PPI"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-lib-base' 'perl-ppi' 'perl-readonly' 'perl-exception-class' 'perl-test-deep')
url='http://search.cpan.org/dist/PPIx-Utilities/'
source=(http://search.cpan.org/CPAN/authors/id/E/EL/ELLIOTJS/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('03a483386fd6a2c808f09778d44db06b02c3140fb24ba4bf12f851f46d3bcb9b')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  [ "$skiptest" = "1" ] || make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
