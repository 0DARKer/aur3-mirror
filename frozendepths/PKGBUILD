# Contributor: KillaB <xGenoBlast@gmail.com>

pkgname=frozendepths
pkgver=1.03
pkgrel=3
pkgdesc="A roguelike game with a cold theme."
arch=("i686" "x86_64")
url="http://koti.mbnet.fi/frozend"
license="unknown"
[ "$CARCH" = "i686" ]   && depends=("ncurses")
[ "$CARCH" = "x86_64" ] && depends=("lib32-ncurses")
source=("http://koti.mbnet.fi/frozend/FD103Lin.tar.gz" "frozendepths")
md5sums=("5f81fd0f39c09ccccc2eaf4e37d6e1db" "877622ecd2bd301e1ca48e9dad204efc")

build() {
	## Copy program and required files
	cd "${srcdir}/FD103Lin"
	install -Dm4755 "fdepths" "${pkgdir}/usr/share/frozendepths/fdepths"
	install -m644 *.txt *.fds "${pkgdir}/usr/share/frozendepths"

	## Copy script used to run program
	install -Dm755 "${srcdir}/frozendepths" "${pkgdir}/usr/bin/frozendepths"
	## This is for people used to the regular filename
	ln -s "/usr/bin/frozendepths" "${pkgdir}/usr/bin/fdepths"
}
