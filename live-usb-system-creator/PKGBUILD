pkgname=live-usb-system-creator
pkgver=0.1.1
pkgrel=1
pkgdesc="Create a LiveUSB from a Ubuntu CD/DVD iso."
arch=('any')
url="http://klik.atekon.de/liveusb/"
license=('GPL2')
depends=('gksu' 'libglade' 'python' 'pygtk' 'syslinux' 'util-linux' 'dbus-python')
conflicts=()
install='live-usb-system-creator.install'
source=(http://ppa.launchpad.net/probono/ubuntu/pool/main/l/liveusb/liveusb_${pkgver}.tar.gz)

build() {
  # Automount bug, don't think gnome-volume-manager is needed anyway
  sed -i -e "s/    mgr = gnomeauto/#    mgr = gnomeauto/g" $srcdir/main/usr/share/python-support/liveusb/liveusb.py
  # Create directories
  install -d ${pkgdir}/bin
  install -d ${pkgdir}/usr/share/applications
  install -d ${pkgdir}/usr/share/liveusb
  install -d ${pkgdir}/usr/share/python-support/liveusb
  # Install files
  cd "$srcdir/main/usr/"
  install -m 755 bin/liveusb ${pkgdir}/bin/
  install -m 644 share/applications/liveusb.desktop ${pkgdir}/usr/share/applications
  install -m 644 share/liveusb/* ${pkgdir}/usr/share/liveusb
  install -m 755 share/python-support/liveusb/* ${pkgdir}/usr/share/python-support/liveusb
}
md5sums=('ad845dddc933cb0771c369fd5bb0fafd')
