# Maintainer: libernux <dutchman55@gmx.com>
pkgname="brother-mfc-5440cn"
pkgver="1.0.0"
pkgrel=1
pkgdesc="LPR and CUPS driver for the Brother MFC-5440cn"
url="http://solutions.brother.com/linux/en_us/"
arch=("i686" "x86_64")
license=('custom:brother commercial license')
depends=("tcsh" "cups")
install="$pkgname.install"
source=(
	"http://www.brother.com/pub/bsc/linux/dlf/MFC5440CNlpr-1.0.2-1.i386.rpm"
	"http://www.brother.com/pub/bsc/linux/dlf/cupswrapperMFC5440CN-1.0.0-1.i386.rpm"
	'cupswrapper-license.txt'
	'lpr-license.txt'
)
md5sums=(
	'fadc0bac021d1c4b7ce78b60d4f7d765'
	'f03ecea72f3c3ac29b3c9083da0fdb68'
	'97ad0cffd216059e9d1d3121899d8646'
	'5e87a3dc0f3e3438c088eda0f3565f0d'
)
build() {
#  do not install in '/usr/local'
	if [ -d $srcdir/usr/local/Brother ]; then
		install -d $srcdir/usr/share
		mv $srcdir/usr/local/Brother/ $srcdir/usr/share/brother
		rm -rf $srcdir/usr/local
	        sed -i 's|/usr/local/Brother|/usr/share/brother|g' `grep -lr '/usr/local/Brother' ./`
        fi
# setup cups-directories
	install -d $srcdir/usr/share/cups/model
	install -d $srcdir/usr/lib/cups/filter
#  go to the cupswrapper directory and find the source file from wich to generate a ppd- and wrapper-file
	cd `find . -type d -name 'cupswrapper'`
	if [ -f cupswrapper* ]; then
		_wrapper_source=`ls cupswrapper*`
	fi
#  generate the ppd
	if [ -f *.ppd ];then
		install *.ppd $srcdir/usr/share/cups/model/`sed -n '/\.PPD/p' *.ppd | awk -F '"' '{ sub("PPD","ppd",$2); print $2}'`
		rm `ls *.ppd`	
	else		
		echo '#! /bin/csh' > genppd
		sed -n '/^printer_model/,/^device_model/p' $_wrapper_source >> genppd
		echo `sed -n "/=\/usr\/share\/cups\/model\// {s|=|=$srcdir|p}" $_wrapper_source` >> genppd
		sed -n '/>>\$ppd_file_name/p' $_wrapper_source >> genppd
		chmod +x genppd
		./genppd
		rm genppd
	fi
#  generate the wrapper
	if [ -f *lpdwrapper* ];then
		install *lpdwrapper* $srcdir/usr/lib/cups/filter
		rm `ls *lpdwrapper*`
	else
		echo '#! /bin/csh' > genwrapper
		sed -n '/^printer_model/,/^device_model/p' $_wrapper_source >> genwrapper
		echo `sed -n "/=\/usr\/lib\/cups\/filter\// {s|=|=$srcdir|p}" $_wrapper_source` >> genwrapper
		sed -n '/>>  \$brotherlpdwrapper/p' $_wrapper_source >> genwrapper
		chmod +x genwrapper
		./genwrapper
		sed -i "s|$srcdir||" $srcdir/usr/lib/cups/filter/*lpdwrapper*
		rm genwrapper
	fi
	if [ ! -z $_wrapper_source ];then
		rm $_wrapper_source
	fi
#  cleanup
	chmod +x $srcdir/usr/lib/cups/filter/*
#  /etc/printcap is managed by cups
	rm `find $srcdir -type f -name 'setupPrintcap*'`
}
package() {
	cp -R $srcdir/usr $pkgdir
	if [ -d $srcdir/opt ]; then cp -R $srcdir/opt $pkgdir; fi
	install -m 644 -D cupswrapper-license.txt $pkgdir/usr/share/licenses/${pkgname}/cupswrapper-licence.txt
	install -m 644 -D lpr-license.txt $pkgdir/usr/share/licenses/${pkgname}/lpr-licence.txt
}