pkgname=pseint
pkgver=20130405
pkgrel=1
pkgdesc='A tool for learning programming basis with a simple spanish pseudocode'
url="http://pseint.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPLv2')
depends=()
makedepends=()
if [ "${CARCH}" = 'x86_64' ]; then
  source=("http://ufpr.dl.sourceforge.net/project/${pkgname}/${pkgver}/${pkgname}-l64-${pkgver}.tgz")
elif [ "${CARCH}" = 'i686' ]; then
  source=("http://ufpr.dl.sourceforge.net/project/${pkgname}/${pkgver}/${pkgname}-l32-${pkgver}.tgz")
fi

md5sums=('6a9823da13940f254f122ad3c84aa1cf')
[ "$CARCH" = "x86_64" ] && md5sums[0]='ff468ef96a79ab81f4bb016162b370a6'

package() {
  sudo cp -r $pkgdir $pkgdir/opt/$pkgname
  sudo ln -s $pkgdir/opt/$pkgname/wxPSeInt $pkgdir/usr/bin/$pkgname
}
