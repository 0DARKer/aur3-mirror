pkgname='perl-mime-base64'
pkgver='3.09'
pkgrel='1'
pkgdesc="Encode/decode Base 64 (RFC 2045)"
arch=('any')
url='http://search.cpan.org/dist/MIME-Base64'
license=('PerlArtistic' 'GPL')
depends=('perl')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/MIME-Base64-3.09.tar.gz')
md5sums=('5056bf56fb41c0ce6edd2c73de2574a5')

build() {
  DIST_DIR="${srcdir}/MIME-Base64-3.09"
  export PERL_AUTOINSTALL=--skipdeps PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

