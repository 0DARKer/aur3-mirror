# Contributor: Pranay Kanwar <pranay.kanwar@gmail.com>

pkgname=arpscan
pkgver=1.7
pkgrel=2
pkgdesc="ARP scanning and fingerprinting tool."
url="http://www.nta-monitor.com/tools/arp-scan/"
source=("http://www.nta-monitor.com/tools/arp-scan/download/arp-scan-$pkgver.tar.gz" get.patch)
arch=(i686 x86_64)
license='GPL'
md5sums=('a9927dba2b1dbdfd1c3b3bb09615fc14' '2cea38136814066d13dcfa50d58ea2f6')

build() {
  cd $startdir/src/arp-scan-$pkgver
  patch -p1 < $startdir/get.patch
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
