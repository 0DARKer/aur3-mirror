# Maintainer: Lucio Zara <pennega@gmail.com> 
 
pkgname=spice-gtk
pkgver=0.6
pkgrel=1
pkgdesc="SPICE client for display into other applications such as virt-manager."
arch=('x86_64' 'i686')
url="http://spice-space.org"
license=('GPL')
makedepends=(gcc automake libtool pkgconfig intltool perl-text-csv)
depends=(spice)
source=("http://spice-space.org/download/gtk/$pkgname-$pkgver.tar.bz2")
md5sums=('fe4b31a4e7b20ec53ff58d53957ab0b1')


build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr 
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
