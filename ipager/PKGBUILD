# Contributor: DonVla <donvla@users.sourceforge.net>

pkgname=ipager
pkgver=1.1.0
pkgrel=7
pkgdesc="IPager is a pager!"
arch=('i686' 'x86_64')
license=('MIT')
url="http://www.useperl.ru/ipager/index.en.html"
depends=('imlib2')
makedepends=('patch' 'scons')
source=(http://www.useperl.ru/ipager/src/ipager-$pkgver.tar.gz ipager.patch ipager-gcc43.patch)
install=$pkgname.install
md5sums=('d74409836f5c31eb55a55f00783b1f6f' '44f3604eeb54ea297d53d907d69d3092' 'e8dbf0808c553f2c79f0937bb7634d87')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p0 < $startdir/ipager.patch
  patch -p0 < $startdir/ipager-gcc43.patch
  scons || return 1
  scons PREFIX=/usr DESTDIR=$pkgdir install || return 1
  install -d -m 755 $pkgdir/usr/share/ipager/themes
  install -m 644 themes/*.conf $pkgdir/usr/share/ipager/themes
}
# vim:set ts=2 sw=2 et:
