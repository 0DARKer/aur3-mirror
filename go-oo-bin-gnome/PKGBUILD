pkgname=go-oo-bin-gnome
pkgver=3.0.1
_subver=3.0
_build=9379
pkgrel=2
pkgdesc="Go-OO GNOME Integration"
arch=('i686' 'x86_64')
url="http://go-oo.org/discover/"
license=('LGPL')
makedepends=('rpmextract')
depends=('go-oo-bin-base' 'libbonobo' 'gnome-vfs')
[ "$CARCH" = "x86_64" ] && _arch=x86_64
[ "$CARCH" = "i686" ] && _arch=i586

md5sums=('67f2c5a1f390a17b3c026b9fe73d82c7')
[ "$CARCH" = "x86_64" ] && md5sums=('789187e222ce55d79a84f36a01e4bb53')

source=(http://go-oo.mirrorbrain.org/stable/linux-${_arch}/${pkgver}/ooobasis${_subver}-gnome-integration-${pkgver}-${_build}.${_arch}.rpm)

build() {

cd $startdir/src/

for i in $(ls *.rpm); do
rpmextract.sh $i
done

mkdir $startdir/pkg/opt/go-oo/basis-link/program -p
mv $startdir/src/opt/openoffice.org/basis3.0/program/* $startdir/pkg/opt/go-oo/basis-link/program

}
