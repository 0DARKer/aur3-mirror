# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=vm
pkgver=8.1.1
pkgrel=1
pkgdesc="View Mail for Emacs"
arch=('any')
url="https://launchpad.net/vm"
license=('GPL')
options=('docs')
depends=('emacs')
optdepends=('bbdb: for using a rolodex-like db')
install='vm.install'
source=("http://launchpad.net/vm/8.1.x/$pkgver/+download/vm-$pkgver.tgz")
md5sums=('78559892abd80df7c6dedae3a07d8f57')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make 
  make DESTDIR=$pkgdir install
  install lisp/u-vm-color.el $pkgdir/usr/share/emacs/site-lisp/vm
}
