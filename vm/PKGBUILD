pkgname=vm
pkgver=8.2.0a
pkgrel=1
pkgdesc="View Mail for Emacs"
arch=('i686' 'x86_64')
url="https://launchpad.net/vm"
license=('GPL')
options=('docs')
depends=('emacs')
optdepends=('bbdb: for using a rolodex-like db')
install='vm.install'
source=("http://launchpad.net/vm/8.2.x/$pkgver/+download/vm-$pkgver.tgz"
        'etcdir-destdir.patch')
md5sums=('2d6434bd498e10c7bc3fd021d1d261b0'
         '15631a7d8bdebba0d917d805ad7c330c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 < "$srcdir/etcdir-destdir.patch"
  ./configure --prefix=/usr
  make
  make DESTDIR="$pkgdir" install
}
