pkgname=python2-jsonpatch
pkgver=1.0
pkgrel=1
pkgdesc="Python object model built on JSON schema and JSON patch"
arch=(any)
url=https://github.com/stefankoegl/python-json-patch
license=(unknown)
depends=(python2-jsonschema1)
makedepends=(python2-distribute)
source=(http://pypi.python.org/packages/source/j/${pkgname#*-}/${pkgname#*-}-$pkgver.tar.gz)
sha256sums=('67b12a04d0bf90d425b0beab07026166cd0e168cd62be0508abfe1f6f225f86f')
sha512sums=('2bc869c181701c79de6e9fb84598301be8f5cfafb4e5e88e181582bed10528f7e2aa0ebd299fe858b4b8d1fc9609998420d0783fea8552f9c3a2aee069cc426b')

build() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py build
}

package() {
    cd ${pkgname#*-}-$pkgver/
    python2 setup.py install --prefix=/usr --root="$pkgdir"
}
