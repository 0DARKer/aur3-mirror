#Contributor: Massimiliano Brocchini <brocchini@netseven.it>

pkgname=xml-light
pkgver=2.2
pkgrel=4
pkgdesc=" A minimal Xml parser & printer for Objective Caml (OCaml)"
arch=('i686' 'x86_64')
url="http://tech.motion-twin.com/xmllight.html"
license=('LGPL')
depends=('ocaml')
makedepends=('unzip')
source=(http://tech.motion-twin.com/zip/$pkgname-$pkgver.zip)
md5sums=('7658985cfdaeeb94b579b932eeaa3e00')

build() {
  cd $startdir/src/$pkgname
  mkdir -p $startdir/pkg/usr/lib/ocaml/$pkgname
  echo -e "\nxml_parser.cmi:\n\tocamlc xml_parser.mli\n" >> Makefile
  make INSTALLDIR=$startdir/pkg/usr/lib/ocaml/$pkgname install || return 1
}
