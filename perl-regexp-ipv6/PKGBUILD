# Maintainer: Max Pray a.k.a. Synthead <synthead@gmail.com>

pkgname='perl-regexp-ipv6'
pkgver='0.03'
pkgrel='1'
pkgdesc="Regular expression for IPv6 addresses"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/~salva/Regexp-IPv6-0.03/'
source=("http://search.cpan.org/CPAN/authors/id/S/SA/SALVA/Regexp-IPv6-$pkgver.tar.gz")
md5sums=('892abe3f43eb0cc76283767f99a335e6')

build() {
	cd "$srcdir/Regexp-IPv6-$pkgver"
	export PERL_MM_USE_DEFAULT=1
	perl Makefile.PL INSTALLDIRS=vendor
	make
}

package() {
	cd "$srcdir/Regexp-IPv6-$pkgver"
	make DESTDIR="$pkgdir" install
}
