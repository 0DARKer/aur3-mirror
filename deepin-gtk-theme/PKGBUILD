# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>

pkgname=deepin-gtk-theme
pkgver=git20130531111406~78ecfb66b0
pkgrel=2
pkgdesc="This package is DeepinGtkTheme."
arch=('any')
url="http://www.linuxdeepin.com"
license=('LGPL-3+')
depends=(gtk-engine-unico gtk-engine-equinox gtk-engine-murrine)
source=("http://packages.linuxdeepin.com/deepin/pool/main/d/$pkgname/${pkgname}_13.06+${pkgver}.tar.gz")
md5sums=('08ae4e18b9ceb397825e6ebeeeb68bd9')

package() {
  cd "$srcdir/$pkgname-13.06+$pkgver"
  mkdir -p "$pkgdir/usr/share/themes/Deepin"
  
  cp -rf {,gtk-2.0,gtk-3.0,metacity-1,index.theme} "$pkgdir/usr/share/themes/Deepin"
  cp -rf "$srcdir/$pkgname-13.06+$pkgver/debian/backgrounds" "$pkgdir/usr/share/backgrounds"

}
