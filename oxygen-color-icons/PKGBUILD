pkgname=oxygen-color-icons
arch=('any')
pkgver=4.4.2
pkgrel=1
pkgdesc="Additional Oxygen colored icons from kdemod project"
url="http://chakra-project.org/"
license=('GPL' 'LGPL' 'FDL')
makedepends=('pkgconfig')
source=(http://chakra-project.org/source/icons/oxygencolors-addon.tar.gz)
md5sums=('da971d7e2c862a6f77fb310a289f5529')

build()
{
    # install addons
    cd ${srcdir}/oxygencolors-addon
    mkdir -p $pkgdir/usr/share/icons/oxygen
    cp -R * $pkgdir/usr/share/icons/oxygen
    cd $pkgdir/usr/share/icons/oxygen
    find . -name "*.png" -print|xargs chmod 644
}
