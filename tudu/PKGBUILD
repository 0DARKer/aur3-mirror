# Maintainer: Dmitry Ostasevich <ostasevich at gmail dot com>
pkgname=tudu
pkgver=0.7
pkgrel=1
pkgdesc="ncurses-based hierarchical todo list manager with vim-like keybindings"
url="http://www.cauterized.net/~meskio/tudu/"
license=('GPL')
depends=('ncurses')
arch=(i686 x86_64)
source=(http://www.cauterized.net/~meskio/tudu/$pkgname-$pkgver.tar.gz)
build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's/ncursesw\/ncurses.h/curses.h/g' src/defs.h
  make DESTDIR=/usr/ ETC_DIR=/etc/ || return 1
  make DESTDIR="$pkgdir/usr/" ETC_DIR="$pkgdir/etc/" install
}
md5sums=('30c2a568ce9e0e5a0fe30746caa3c290') 
