# Maintainer: willemw <willemw12@gmail.com>

_pkgname=indicator-weather
pkgname=$_pkgname-bzr
pkgver=338
pkgrel=1
pkgdesc="A comprehensive weather notification system, implemented using the indicator applet API (Canonical Ayatana Project)"
arch=('any')
url="https://launchpad.net/weather-indicator"
license=('GPL')
depends=('libappindicator3' 'libgweather' 'python2-pywapi' 'python2-pytz')
optdepends=('python2-unidecode: for ASCII transliterations of Unicode text')
makedepends=('bzr' 'python2-distutils-extra')
provides=($_pkgname)
conflicts=($_pkgname)
install=$pkgname.install
source=($pkgname::bzr+http://bazaar.launchpad.net/~weather-indicator-team/weather-indicator/rainy)  # Series 2.0
md5sums=(SKIP)

pkgver() {
  cd "$srcdir/$pkgname"
  bzr revno
}

build() {
  cd "$srcdir/$pkgname"
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir/"
}

