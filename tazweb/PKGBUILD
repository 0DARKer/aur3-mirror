# Maintainer: sinisa

pkgname=tazweb
pkgver=1.4
pkgrel=1
pkgdesc="Web browser from SlitazLinux"
arch=('i686')
url="http://www.slitaz.org"
license=('GPL')
groups=('network')
depends=('libwebkit')
source=(http://mirror.slitaz.org/sources/tazweb/$pkgname-$pkgver.tar.gz
main.c)
md5sums=('a8eb10a9f818e4627ed787412f2e383e'
         '4d39ad0cd471f9c5864cce328a750a7b')


build() {
  cp $startdir/main.c $srcdir/$pkgname-$pkgver/src/main.c
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make prefix=/usr DESTDIR=$pkgdir install
}
