# Contributor: Daenyth <Daenyth+Arch AT gmail DOT com>
# Maintainer: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-json_pure
_gemname=json_pure
pkgver=1.5.4
pkgrel=1
pkgdesc="A ruby implementation of the JSON specification according to RFC 4627."
arch=('any')
url="http://json.rubyforge.org"
license=('GPL')
depends=('ruby')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
md5sums=('42633be4a81605ebfed1e35ea9859a1d')

build() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem
}


