# Contributor: Daenyth <Daenyth+Arch AT gmail DOT com>
pkgname=ruby-json_pure
pkgver=1.4.6
pkgrel=1
pkgdesc="A ruby implementation of the JSON specification according to RFC 4627"
arch=(any)
url="http://json.rubyforge.org/"
license=('GPL')
depends=(ruby)
makedepends=(rubygems)
source=(http://gems.rubyforge.vm.bytemark.co.uk/gems/json_pure-$pkgver.gem)
noextract=(json_pure-$pkgver.gem)
md5sums=('efc352b7e48263cba1d4e7d96c7721b1')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" json_pure-$pkgver.gem
}


