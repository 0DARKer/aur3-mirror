pkgname=gat2
pkgver=20130311
pkgrel=1
pkgdesc="Easy counter and timer."
arch=('i686' 'x86_64')
url="https://github.com/opamp/gat2"
license=('BSD')
depends=('qt5-base' 'qt5-xmlpatterns' 'qt5-multimedia' 'qt5-imageformats')
#depends=('qt5')
makedepends=('cmake' 'git')

_gitroot="git://github.com/opamp/gat2.git"
_gitname="gat2"


build() {
	cd ${srcdir}
	msg "git clone from ${_gitroot}"
	git clone ${_gitroot} $pkgname
	patch -p0 < $pkgname/gat2-qt5.patch
	cd $pkgname 
	mkdir build &&cd build
	//git checkout -b build 2.5.6 &&mkdir build &&cd build
	
	msg "run CMake command."
	cmake -DCMAKE_INSTALL_PREFIX=/usr ../ 
	msg "start building"
	make
}

package() {
	cd $srcdir/$pkgname/build
	make DESTDIR="$pkgdir" install
}
