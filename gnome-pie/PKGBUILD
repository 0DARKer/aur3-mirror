# Maintainer: Vinilox
pkgname=gnome-pie
pkgver=0.4.0
pkgrel=1
pkgdesc="A visual application launcher for gnome."
arch=('i686' 'x86_64')
url="https://github.com/Simmesimme/Gnome-Pie"
license=('GPL')
depends=('libgee' 'libxtst' 'libunique' 'bamf' 'libwnck' 'gnome-menus' 'hicolor-icon-theme')
makedepends=('vala' 'cmake')
install=gnome-pie.install
source=("https://github.com/downloads/Simmesimme/Gnome-Pie/Gnome-Pie-0.4.0.tar.gz")
md5sums=('9208b65fb622fa253e0216738c6e3916')
build() {
  cd $srcdir/Gnome-Pie-0.4.0
  msg "Building gnome-pie"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd $srcdir/Gnome-Pie-0.4.0/build
  make DESTDIR=${pkgdir} install
}


