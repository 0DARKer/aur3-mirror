# Maintainer: Vinilox
pkgname=gnome-pie
pkgver=0.2
pkgrel=3
pkgdesc="A visual application launcher for gnome."
arch=('i686' 'x86_64')
url="https://github.com/Simmesimme/Gnome-Pie"
license=('GPL')
depends=('gtk2' 'gnome-menus2' 'cairo' 'libgee' 'libxml2' 'libxtst' 
'libunique' 'gdk-pixbuf2' 'hicolor-icon-theme')
makedepends=('gcc' 'vala' 'cmake' 'git')
install=(gnome-pie.install)
source=("https://github.com/downloads/Simmesimme/Gnome-Pie/Gnome-Pie-0.2.tar.gz")
md5sums=('124056c23e5a9543855701e7bb2d8404')
build() {
  cd $srcdir/Gnome-Pie
  msg "Building gnome-pie"
  mkdir -p build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr ..
  make
}

package() {
  cd $srcdir/Gnome-Pie/build
  make DESTDIR=${pkgdir} install
}


