# Contributor: Hugo Ideler <hugoideler AT dse DOT nl>
pkgname=toggl
pkgver=2.5.0
pkgrel=2
pkgdesc="Time tracker application"
arch=('i686' 'x86_64')
url="http://www.toggl.com/"
license=()
groups=()
depends=(x-server)
makedepends=(deb2targz)
provides=()
conflicts=()
replaces=()
backup=()
options=()
if [ "$CARCH" == 'x86_64' ]
then
  source=('http://download.toggl.com/toggldesktop/toggl-desktop-current-64.deb')
  md5sums=('eb75037dd4107c15283bcec0203443f7')
else
  source=('http://download.toggl.com/toggldesktop/toggl-desktop-current.deb')
  md5sums=('3d0db92eb98e87fb332ee22ba91a28ed')
fi
noextract=()
#generated with 'makepkg -g'

build() {
  cd "$srcdir/"

  #extract archive
  if [ "$CARCH" == 'x86_64' ]
  then
   deb2targz "toggl-desktop-current-64.deb" || return 1
   tar xvzf "toggl-desktop-current-64.tar.gz" || return 1
  else
   deb2targz "toggl-desktop-current.deb" || return 1
   tar xvzf "toggl-desktop-current.tar.gz" || return 1
  fi

  # Manual install
  mkdir -p $pkgdir/usr
  cp -a usr/* $pkgdir/usr
}

# vim:set ts=2 sw=2 et:
