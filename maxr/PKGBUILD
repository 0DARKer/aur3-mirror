pkgname=maxr
pkgver=0.2.6
pkgrel=1
pkgdesc='A free remake of the strategy game "M.A.X." by Interplay'
arch=('i686' 'x86_64')
url="http://www.maxr.org"
license=('GPL' 'FDL')
depends=('gcc-libs' 'sdl_mixer' 'sdl_net')
source=(http://www.maxr.org/downloads/$pkgname-$pkgver.tar.gz $pkgname.desktop)
md5sums=('14c6545e4038b8319b132d8aa9929194' '5b4ce786caf79bbcf8fa726bb1821786')


build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install

  install -Dm644 ../$pkgname.desktop \
      "$pkgdir"/usr/share/applications/$pkgname.desktop

  mkdir -p "$pkgdir"/usr/share/pixmaps
  ln -sf /usr/share/maxr/maxr.png "$pkgdir"/usr/share/pixmaps/
  mkdir -p "$pkgdir"/usr/share/icons/hicolor/128x128/apps
  ln -sf /usr/share/maxr/maxr.png "$pkgdir"/usr/share/icons/hicolor/128x128/apps/

  mkdir -p "$pkgdir"/usr/share/licenses/$pkgname
  install -m644 COPYING{,.README} "$pkgdir"/usr/share/licenses/$pkgname/
}
