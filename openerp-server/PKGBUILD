# Maintainer: Dan Serban
# Contributors: Mark Doe, L42y

pkgname=openerp-server
pkgver=6.0.3
pkgrel=1
pkgdesc="Advanced OpenSource ERP and CRM server"
url=http://openerp.com/
arch=(i686 x86_64)
license=(GPLv3)
depends=(postgresql python-egenix-mx-base python-lxml python-pychart python-pytz python-reportlab python2 python2-psycopg2 python2-yaml)
optdepends=(pydot python-imaging python-vobject)
source=("http://www.openerp.com/download/stable/source/openerp-server-${pkgver}.tar.gz")
md5sums=('33b165b124efb15ba9285cea8d7767f5')

build()
{
  cd openerp-server-${pkgver}
  python2 setup.py install --root="${pkgdir}"
  cd "${pkgdir}"/usr/bin
  sed -i 's/cd .*pkg/cd /' openerp-server
}

