pkgname=openerp-server
pkgver=6.0.1
pkgrel=1
pkgdesc="The OpenERP Server - The world's most advanced OpenSource ERP & CRM"
url="http://openerp.com/"
arch=(i686 x86_64)
license=(GPL3)
depends=('python2'
         'python-psycopg2' 'postgresql'
         'python-reportlab' 'python-pychart' 
         'python-egenix-mx-base'
         'python-lxml' 'python-pytz' 
         'pydot'
         )
optdepends=('python-pil: for generating reports using non .jpg images' 
            'python-vobject: for iCalendar and VCards parsing')
source=("http://openerp.com/download/stable/source/$pkgname-$pkgver.tar.gz")
md5sums=('5e58cba17137491f667fcb5385378fc0')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root=$pkgdir
  cd $pkgdir/usr/bin/
  sed -i 's/cd .*pkg/cd /' openerp-server
}
