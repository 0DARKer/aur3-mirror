# Contributor: scj <scj archlinux us>
pkgname=vcs
pkgver=1.12.1
pkgrel=1
pkgdesc="A bash script to create screenshot previews of videos."
arch=('i686' 'x86_64')
url="http://p.outlyer.net/vcs/"
license=('GPL')
depends=('imagemagick' 'mplayer' 'ffmpeg' 'bc')
source=(http://p.outlyer.net/$pkgname/files/$pkgname-$pkgver.bz2)
md5sums=('255f98e716b14ad861a1fc076eebcd95')

build() {
  mkdir -p "$startdir/pkg/usr/bin"
  install -m 755 "$startdir/src/$pkgname-$pkgver" "$startdir/pkg/usr/bin/$pkgname"
}
# vim:set ts=4 sw=4 et:

