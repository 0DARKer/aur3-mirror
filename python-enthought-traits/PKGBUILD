#Maintainer: Tondu <thomas.gastine at wanadoo.fr>

pkgname=python-enthought-traits
pkgver=3.5.0
pkgrel=1
pkgdesc="User interface related modules for enthought traits. The traits package provides a metaclass with special attributes that are called traits."
arch=('i686' 'x86_64')
url="http://code.enthought.com/projects/traits"
provides=('Traits' 'TraitsBackendWX' 'TraitsGui')
source=("http://www.enthought.com/repo/ETS/Traits-$pkgver.tar.gz"
        "http://www.enthought.com/repo/ETS/TraitsGUI-$pkgver.tar.gz"
        "http://www.enthought.com/repo/ETS/TraitsBackendWX-$pkgver.tar.gz")
depends=('python' 'wxpython' 'python-numpy>=1.1')
makedepends=('setuptools' 'pyrex' 'python-sphinx')
license=('GPL')
md5sums=('7fda85ccd3383b4d6ed8ef1be7775cb5'
         'bb1fda21569585ef4b263b29f6f8a933'
	 '6a360515ccd73946e5eef687c7bd8bf5')

build() {
    # install Traits
    cd $srcdir/Traits-$pkgver
    python2 setup.py install --root $pkgdir --prefix=/usr || return 1
    # install TraitsGUI 
    cd $srcdir/TraitsGUI-$pkgver
    python2 setup.py install --root $pkgdir --prefix=/usr || return 1
    # install TraitsBackendWX
    cd $srcdir/TraitsBackendWX-$pkgver
    python2 setup.py install --root $pkgdir --prefix=/usr || return 1
}
