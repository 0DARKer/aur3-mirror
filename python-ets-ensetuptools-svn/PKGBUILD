# Contributor: giniu <gginiu@gmail.com>
pkgname=python-ets-ensetuptools-svn
pkgver=24960
pkgrel=1
pkgdesc="A replacement for setuptools that builds on top of it and \
         adds additional features (Enthought Tool Suite)."
arch=('any')
url="http://code.enthought.com/"
license=('BSD')
depends=('python')
makedepends=('subversion')
conflicts=('setuptools')
provides=('setuptools')
options=(!emptydirs)

_svnmod=ensetuptools
_svntrunk=https://svn.enthought.com/svn/enthought/"${_svnmod}"/trunk

build() {
  cd "$srcdir"

  if [ -d "$_svnmod"/.svn ]; then
    (cd "$_svnmod" && svn up -r "$pkgver")
  else
    svn co "$_svntrunk" --config-dir ./ -r "$pkgver" "$_svnmod"
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$_svnmod-build"
  svn export "$_svnmod" "$_svnmod-build"
  cd "$_svnmod-build"

  python setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

