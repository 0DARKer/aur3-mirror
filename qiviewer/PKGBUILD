# Maintainer: dario aguilera <dario_21_06@hotmail.com>

pkgname=qiviewer
pkgver=0.3.1
pkgrel=1
pkgdesc="Another image viewer written in Qt4"
arch=('i686' 'x86_64')
url="http://code.google.com/p/qiviewer"
license=('GPL2')
depends=('qt')
makedepends=('qt')
source=(http://qiviewer.googlecode.com/files/qiviewer-${pkgver}.tar.bz2)
sha1sums=('cda778520e062eebe9a0759f589931b0d56e57c9')

build() {
        cd "${srcdir}"/${pkgname}/src
        qmake PREFIX=/usr
        make
}
package() {
	cd "${srcdir}"/${pkgname}/src
        make install INSTALL_ROOT="${pkgdir}"
}

