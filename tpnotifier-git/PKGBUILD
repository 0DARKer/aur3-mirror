pkgname=tpnotifier-git
pkgver=20110827
pkgrel=1
pkgdesc="A  text-based new-package notifier for ArchLinux without sudo"
arch=('i686' 'x86_64')
url="http://github.com/cdede/tpnotifier/"
license=('GPL')
depends=('python2-feedparser'  'pacman>=3.5' )
optdepends=('python-pycurl: download support'  'pacman2aria2:fast download support')
makedepends=('git' )

_gitroot="http://github.com/cdede/tpnotifier.git"
_gitname="tpnotifier"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  export PREFIX=$pkgdir
  ./build.sh install
}
