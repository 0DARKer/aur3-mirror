# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=gottet
pkgver=1.0.5
pkgrel=2
pkgdesc="A tetris clone using the Qt4 GUI toolkit"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL3')
if [ -e /usr/bin/qmake ] || [ ! -e /usr/bin/qmake-qt4 ]; then
  depends=('qt5-base')
else
  depends=('qt4')
fi
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('b92bfe60678be21d379960e6d818774f')
sha256sums=('e954bbbc24abe171447e76d9d52e1043d16416377c6f639fd454d0ee99db1cdc')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  if [ -e /usr/bin/qmake ]; then
    /usr/bin/qmake PREFIX=/usr
  else
    qmake-qt4 PREFIX=/usr
  fi
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
