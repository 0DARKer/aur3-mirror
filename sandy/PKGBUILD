pkgname=sandy
pkgver=0.2
pkgrel=1
pkgdesc="Simple text editor based on GtkSourceView2"
url="http://sandyeditor.sf.net/"
arch=('i686' 'x86_64')
license=('MIT')
makedepends=('pkgconfig')
depends=('gtk2' 'gtksourceview2')
optdepends=('zenity: to build dialogs with the default config' 'xorg-utils: to use xprop to set properties')
source=(http://downloads.sourceforge.net/project/sandyeditor/sandy-0.2.tar.gz)
md5sums=('be16d13a368e2fef2ef567176bf1fd73')

build() {
	cd $srcdir/$pkgname-$pkgver
	make PREFIX=/usr DESTDIR=$pkgdir clean install || return 1
	install -Dm0644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE.txt
}

