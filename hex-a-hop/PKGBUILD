# Contributor: megadriver <megadriver at gmx dot com>

pkgname=hex-a-hop
pkgver=1.1.0
pkgrel=1
pkgdesc="Destroy all the green tiles!"
arch=('i686' 'x86_64')
url="http://hexahop.sourceforge.net"
license=('GPL2')
depends=('sdl_mixer' 'sdl_ttf' 'zlib')
source=("http://downloads.sourceforge.net/sourceforge/project/hexahop/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz"
         $pkgname.png $pkgname.desktop)
md5sums=('cc8d065c2cc0fce9e08852b8c465175e'
         'fbe63878a73015a9940793b23513db97'
         'af5b37d54859ac28035c6c2903c844e4')
build() {
    cd $srcdir/$pkgname-$pkgver
    ./configure --prefix=/usr
    make || return 1
}

package() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir install
    cd $srcdir
    install -m644 $pkgname.png $pkgdir/usr/share/$pkgname/icon.png
    install -D -m644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}

