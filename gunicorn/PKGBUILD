# Contributor: Vsevolod Balashov <vsevolod at balashov dot name>

pkgname=gunicorn
pkgver=18.0
pkgrel=2
pkgdesc='WSGI HTTP Server for UNIX'
arch=(any)
url='http://gunicorn.org/'
license=(MIT)
depends=(python)
makedepends=(python-distribute)
source=("http://pypi.python.org/packages/source/g/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('b61f38786af6b8d644b530552012d669c7415fcf5852de320f290800db97983d')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --prefix=/usr --optimize=1
  install -Dm 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

