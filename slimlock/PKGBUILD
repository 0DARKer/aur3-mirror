# Maintainer: Joel Burget <joelburget@gmail.com>
pkgname=slimlock
pkgver=0.10.2
pkgrel=2
pkgdesc='Unholy screen locker based on SLiM.'
arch=('i686' 'x86_64')
url='http://joelburget.com/slimlock/'
license=('GPL2')
depends=('libxft' 'imlib2' 'pam' 'libxrandr')
backup=('etc/slimlock.conf' 'etc/pam.d/slimlock')
source=(https://github.com/joelburget/slimlock/tarball/v0.10.2)
md5sums=('a366732c4c05eeec4b17143317dfc595')

build() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-770a1a9"

  make
}

package() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-770a1a9"

  make DESTDIR=$pkgdir MANDIR=/usr/share/man install
}
