# Maintainer: Joel Burget <joelburget@gmail.com>
pkgname=slimlock
pkgver=0.10.1
pkgrel=1
pkgdesc='Unholy screen locker based on SLiM.'
arch=('i686' 'x86_64')
url='http://programsthatsmellgood.com/slimlock/'
license=('GPL2')
depends=('libxft' 'imlib2' 'pam' 'libxrandr')
backup=('etc/slimlock.conf' 'etc/pam.d/slimlock')
source=(https://github.com/joelburget/slimlock/tarball/v0.10.1)
md5sums=('d11c54ef544d405ee8035705992454d1')

build() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-085c27e"

  make
}

package() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-085c27e"

  make DESTDIR=$pkgdir MANDIR=/usr/share/man install
}
