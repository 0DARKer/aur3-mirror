# Maintainer: Joel Burget <joelburget@gmail.com>
pkgname=slimlock
pkgver=0.8
pkgrel=3
pkgdesc='Unholy screen locker based on SLiM.'
arch=('i686' 'x86_64')
url='http://programsthatsmellgood.com/slimlock/'
license=('GPL2')
depends=('libxmu' 'libxft' 'libjpeg>=8' 'libpng>=1.4')
source=(https://github.com/joelburget/slimlock/tarball/v0.8.2)
md5sums=('8d3d8a334d294bc1ffc8382e2ffc6de9')

build() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-d2bc91f"

  make
}

package() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-d2bc91f"

  make DESTDIR="$pkgdir/" MANDIR=/usr/share/man install
}
