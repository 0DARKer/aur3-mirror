# Maintainer: Joel Burget <joelburget@gmail.com>
pkgname=slimlock
pkgver=0.9
pkgrel=1
pkgdesc='Unholy screen locker based on SLiM.'
arch=('i686' 'x86_64')
url='http://programsthatsmellgood.com/slimlock/'
license=('GPL2')
depends=('libxft' 'imlib2' 'pam')
source=(https://github.com/joelburget/slimlock/tarball/v0.9)
md5sums=('db578bc0ddf2e87192affc70188173a1')

build() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-09787cb"

  make
}

package() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-09787cb"

  make DESTDIR="$pkgdir/" MANDIR=/usr/share/man install
}
