# Maintainer: Joel Burget <joelburget@gmail.com>
pkgname=slimlock
pkgver=0.10
pkgrel=1
pkgdesc='Unholy screen locker based on SLiM.'
arch=('i686' 'x86_64')
url='http://programsthatsmellgood.com/slimlock/'
license=('GPL2')
depends=('libxft' 'imlib2' 'pam' 'libxrandr')
source=(https://github.com/joelburget/slimlock/tarball/v0.10)
md5sums=('a84170a07ffff1280f508dfceffb1152')

build() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-d5b98e7"

  make
}

package() {
  #cd '$srcdir/$pkgname-$pkgver'
  cd "$srcdir/joelburget-slimlock-d5b98e7"

  make DESTDIR=$pkgdir MANDIR=/usr/share/man install
}
