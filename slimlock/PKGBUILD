# Maintainer: Diego <cdprincipe@gmail.com>
# Contributor: Joel Burget <joelburget@gmail.com>

pkgname=slimlock
pkgver=0.11
pkgrel=6
pkgdesc="Unholy screen locker based on SLiM"
arch=('i686' 'x86_64')
url="http://joelburget.com/slimlock/"
license=('GPL2')
depends=('slim' 'libxft' 'imlib2' 'pam' 'libxrandr')
backup=('etc/slimlock.conf' 'etc/pam.d/slimlock')
source=("$pkgname-$pkgver.tar.gz"::"https://github.com/joelburget/$pkgname/archive/master.tar.gz")
sha1sums=('a2e070ef8b377bf52652bf07a88ccb0e7e04bfb5')

build() {
  cd "$pkgname"-master
  make
}

package() {
  cd "$pkgname"-master
  make DESTDIR="$pkgdir/" MANDIR=/usr/share/man install
}
