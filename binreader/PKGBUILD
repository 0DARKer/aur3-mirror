# Maintainer:  Backfist <chalvadori@gmx.de>

pkgname=binreader
pkgver=1.0beta1
pkgrel=1
pkgdesc="Simple No-nonsense NZB download manager."
url="http://www.binreader.com/"
license=('custom')
makedepends=('deb2targz')
arch=(i686 x86_64)
depends=('qt' 'glibc' 'libxdmcp' 'libxcb' 'openssl' 'libpng' 'freetype2' 'libxrender' 'libx11' 'par2cmdline') 

if [[ $CARCH == 'x86_64' ]];
then
	
source=(http://www.binreader.com/${pkgname}_${pkgver}_amd64.deb)
	md5sums=('d125af5998ebd4cbf7056b5304f06a52');
else
	source=(http://www.binreader.com/${pkgname}_${pkgver}_i386.deb)
	md5sums=('d7080dacb48d9cf0e64c00c24d079576');
fi

optdepends=()

build() {
 if [[ $CARCH == 'x86_64' ]];
 then
	deb2targz ${srcdir}/${pkgname}_${pkgver}_amd64.deb
	tar -xf ${srcdir}/${pkgname}_${pkgver}_amd64.tar.gz; 
 else
	deb2targz ${srcdir}/${pkgname}_${pkgver}_i386.deb
	tar -xf ${srcdir}/${pkgname}_${pkgver}_i386.tar.gz;
 fi
  
  cp -R ${srcdir}/usr ${pkgdir}/
}

