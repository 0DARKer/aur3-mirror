# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
pkgname=vagrant
pkgver=0.6.9
pkgrel=1
pkgdesc="tool for building and distributing virtualized development environments"
arch=(any)
url="http://vagrantup.com/"
license=("MIT")
depends=('ruby' 'virtualbox')
source=(http://rubygems.org/downloads/vagrant-${pkgver}.gem)
noextract=(vagrant-$pkgver.gem)
md5sums=('6e7a8083a4f40d984483f8073f30449b')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" ${pkgname}-$pkgver.gem
}

