# Maintainer: Jochen Schalanda <jochen+aur AT schalanda.name>
# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
# Last version visible on http://rubygems.org/gems/vagrant
pkgname=vagrant
pkgver=0.9.0
pkgrel=1
pkgdesc="Tool for building and distributing virtualized development environments"
arch=(any)
url="http://vagrantup.com/"
license=('MIT')
makedepends=('rubygems' 'rake')
depends=('ruby' 'virtualbox>=4.0' 'ruby-archive-tar-minitar' 'ruby-net-ssh-2.2' \
         'ruby-net-scp' 'ruby-erubis' 'ruby-json-1.5' 'ruby-i18n' \
         'ruby-log4r' 'ruby-childprocess')
source=(http://rubygems.org/downloads/${pkgname}-${pkgver}.gem)
noextract=($pkgname-$pkgver.gem)
md5sums=('4acb78803f387d213f652416dc178904')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir"/usr/bin $pkgname-$pkgver.gem
}
