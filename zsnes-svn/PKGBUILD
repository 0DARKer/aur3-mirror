# Contributor: rabyte <rabyte__gmail>

pkgname=zsnes-svn
pkgver=4986
pkgrel=2
pkgdesc="A Super Nintendo emulator"
arch=('i686')
url="http://www.zsnes.com/"
license=('GPL')
depends=('libao' 'libgl' 'libpng>=1.2' 'sdl>=1.2')
makedepends=('autoconf' 'automake' 'nasm' 'subversion')
conflicts=('zsnes' 'zsnes-wip')
source=()
md5sums=()

_svntrunk=http://svn.bountysource.com/zsnes/trunk
_svnmod=zsnes

build() {
  cd $startdir/src

  msg "Updating SVN entries for $_svnmod..."
  svn co $_svntrunk $_svnmod -r $pkgver
  cp -r $_svnmod $_svnmod-build
  cd $_svnmod-build/src

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  ./autogen.sh --prefix=/usr --disable-debugger --enable-libao
  make || return 1
  make DESTDIR=$startdir/pkg install

  # install icon and desktop file
  install -m644 -D icons/48x48x32.png $startdir/pkg/usr/share/pixmaps/zsnes.png
  install -m644 -D linux/zsnes.desktop $startdir/pkg/usr/share/applications/zsnes.desktop

  rm -rf $startdir/src/$_svnmod-build
}
