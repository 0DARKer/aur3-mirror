# Maintainer: Emeric Grange <emeric.grange@gmail.com>
# Previous maintainer: Matej Stuchlik <matej.stuchlik at gmail dot com>

pkgbase=openrocket
pkgname=openrocket
pkgver=14.11
pkgrel=1
pkgdesc="A free and open source, fully featured model rocket simulator"
arch=("i686" "x86_64")
url="http://openrocket.sourceforge.net/"
license=("GPL")
depends=("java-runtime")
source=(http://switch.dl.sourceforge.net/project/${pkgname}/${pkgname}/${pkgver}/OpenRocket-${pkgver}.jar
        openrocket)
noextract=(OpenRocket-${pkgver}.jar
           openrocket)
md5sums=('407ad771e0eae29eddc28720362063e5'
         '54eb3c1641feb1eac7d4e4d9e912434a')

package() {
    install -d ${pkgdir}/usr/share/java/${pkgname}
    install -d ${pkgdir}/usr/bin

    install -Dm644 ${srcdir}/OpenRocket-${pkgver}.jar ${pkgdir}/usr/share/java/${pkgname}/${pkgname}.jar
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/bin
}
