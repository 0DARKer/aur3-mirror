# Contributor: Gary James <garyjames82@gmail.com>
pkgname=appearance
pkgver=0.9.1
pkgrel=1
pkgdesc="GTK theme setter for rox desktop"
arch=('i686')
url="http://roscidus.com/desktop/Appearance"
license=('GPL')
depends=(rox-session)
source=(http://kent.dl.sourceforge.net/sourceforge/rox/$pkgname-$pkgver.tar.gz)
md5sums=('78ed5f6a6e642142dd0f294d1957eecc')

build() {
  cd "$srcdir/$pkgname-$pkgver/Appearance"
  rm -R Help
  mkdir -p "$pkgdir/usr/share/$pkgname"
  cp -R * "$pkgdir/usr/share/$pkgname"
  cp -R .DirIcon "$pkgdir/usr/share/$pkgname"
  mkdir -p "$pkgdir/usr/bin"
  echo "#!/bin/bash" > $pkgdir/usr/bin/$pkgname
  echo "/usr/share/$pkgname/AppRun" >> $pkgdir/usr/bin/$pkgname
  chmod +x $pkgdir/usr/bin/$pkgname
}

# vim:set ts=2 sw=2 et:
