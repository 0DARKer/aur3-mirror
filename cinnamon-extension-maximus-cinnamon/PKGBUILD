# Maintainer: ValHue

pkgname=cinnamon-extension-maximus-cinnamon
pkgver=5
pkgrel=1
pkgdesc="Undecorate maximized windows, like Ubuntu's old 'Maximus' package. See readme at extension homepage."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/extensions/view/19"
license=('GPL3')
depends=('cinnamon')
source=("http://cinnamon-spices.linuxmint.com/uploads/extensions/03AG-9ISW-9DB1.zip" 
        "metadata.json")
md5sums=('8cfc124b1497d8ac3d4647e90093e120'
         'a24a1f89ad1cda4aed835929daa47ed1')

package() {
  find maximus-cinnamon\@mathematical.coffee.gmail.com/ -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/cinnamon/extensions/{}" \;
  
  install -Dm644 "$startdir/metadata.json" "$pkgdir/usr/share/cinnamon/extensions/maximus-cinnamon@mathematical.coffee.gmail.com/"
}
