# Contributor: Dominion <xGenoBlast@gmail.com>

pkgname=powder
pkgver=115
pkgrel=1
pkgdesc="A graphical roguelike, originally designed for the Gameboy Advance"
arch=("i686" "x86_64")
url="http://www.zincland.com/powder/"
license=("custom")
depends=("sdl")
provides=("powder")
source=(http://zincland.com/powder/release/${pkgname}${pkgver}_src.tar.gz)
md5sums=('387fa56b81074967fae205594377ad7b')

build() {
	# We must set CXXFLAGS to use home directory
	# Since makepkg won't let buildall.sh change CXXFLAGS
	CXXFLAGS="${CXXFLAGS} -DCHANGE_WORK_DIRECTORY"

	## Main build
	cd "${startdir}/src/${pkgname}${pkgver}_src/"
	./buildall.sh --use-home-dir
	install -Dm 755 powder "${startdir}/pkg/usr/bin/powder"

	## Copy license
	install -D LICENSE.TXT "${startdir}/pkg/usr/share/licenses/powder/LICENSE.TXT"
}

