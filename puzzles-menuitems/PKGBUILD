pkgname=puzzles-menuitems
pkgver=8951
pkgrel=1
pkgdesc="Adds Simon Tatham's Portable Puzzle Collection to menu"
arch=('i686' 'x86_64')
url="http://www.chiark.greenend.org.uk/~sgtatham/puzzles/"
license=('unknown')
depends=('puzzles')
source=($pkgname-$pkgver.tar.gz)
md5sums=('2b8005ac8c64bfcbd5551bdbafd03458')

build() {
  mkdir -p "$pkgdir"/usr/share
  cp -r --target-directory="$pkgdir"/usr/share "$srcdir"/*
}
