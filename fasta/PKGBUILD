# Contributor: Damir Perisa <damir.perisa@bluewin.ch>

pkgname=fasta
pkgver=35.4.9
pkgrel=2
pkgdesc="fasta: fast protein comparison or a fast nucleotide comparison"
arch=("i686" "x86_64")
license=("custom")
url="http://fasta.bioch.virginia.edu/"
depends=('glibc')
source=("http://faculty.virginia.edu/wrpearson/fasta/fasta3/$pkgname-$pkgver.tar.gz")
md5sums=('a97ce53a01233a84a136634f6239698f')

build() {
  cd $startdir/src/$pkgname-$pkgver/src

  mkdir -p $startdir/pkg/usr/bin

  if [ "${CARCH}" = "i686" ]; then
    make XDIR=$startdir/pkg/usr/bin -f ../make/Makefile.linux32 || return 1
    make XDIR=$startdir/pkg/usr/bin -f ../make/Makefile.linux32 install || return 1
  else
    make XDIR=$startdir/pkg/usr/bin -f ../make/Makefile.linux64 || return 1
    make XDIR=$startdir/pkg/usr/bin -f ../make/Makefile.linux64 install || return 1   
  fi
  
  install -D -m644 ../COPYRIGHT ${startdir}/pkg/usr/share/licenses/$pkgname/COPYRIGHT
}

