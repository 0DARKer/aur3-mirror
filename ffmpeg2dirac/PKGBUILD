# Contributor: farid abdelnour <farid at archlinux-br.org>

pkgname=ffmpeg2dirac
pkgver=0.1.0
pkgrel=2
pkgdesc="A tool to transcode any file that can be decoded by FFmpeg to Dirac muxed with Vorbis audio in Ogg."
arch=('i686' 'x86_64')
url="http://diracvideo.org/projects"
depends=('ffmpeg' 'dirac')
makedepends=('scons')
license=('MPL')
source=(http://downloads.sourceforge.net/dirac/ffmpeg2dirac-0.1.0.tar.gz)
md5sums=('cbcda7daabdb6990e0a57cd2a6ec4052')

build() {
	cd ${startdir}/src/${pkgname}-${pkgver}
	scons || return 1
	scons install prefix=/usr destdir=${startdir}/pkg
}



