pkgname=ghost.py
_uc_pkg=Ghost.py
pkgver=0.1a2
pkgrel=1
pkgdesc="Webkit based webclient (relies on PyQT)"
arch=('any')
url="https://github.com/$_auth/$_uc_pkg/"
license=('MIT')
depends=('python2' 'python2-pyqt' 'python2-tornado')
makedepends=('python2-distribute')
source=(http://pypi.python.org/packages/source/G/$_uc_pkg/$_uc_pkg-$pkgver.tar.gz)
md5sums=('b8ef86b450b2d902a58885a4866e3caa')

build() {
   cd $_uc_pkg-$pkgver 
   python2 setup.py build || exit 1
   python2 setup.py install --root="${pkgdir}" --optimize=1 || exit 1
}

