# Contributor: Marc Hudson <marxom@gmail.com>

pkgname=perl-net-daemon
pkgver=0.43
pkgrel=1
pkgdesc="Perl Module: Extension for portable daemons."
arch=(i686 x86_64)
license=('PerlArtistic')
url="http://search.cpan.org/~mnooning/Net-Daemon"
depends=('perl')
options=(!emptydirs)
source=(http://www.cpan.org/authors/id/M/MN/MNOONING/Net-Daemon/Net-Daemon-$pkgver.tar.gz)
replaces=('net-daemon')
provides=('net-daemon')
md5sums=('a173a8407fb7b049aa465598eca6dfd7')

build() {
  cd $startdir/src/Net-Daemon
  # Force module installation to "current" perl directories.
  eval `perl -V:archname`
  perl Makefile.PL \
      INSTALLARCHLIB=/usr/lib/perl5/current/${archname} \
      INSTALLSITELIB=/usr/lib/perl5/site_perl/current \
      INSTALLSITEARCH=/usr/lib/perl5/site_perl/current/${archname}
  make || return 1
  make install DESTDIR=${startdir}/pkg

  # remove perllocal.pod and .packlist
  find ${startdir}/pkg -name perllocal.pod -delete
  find ${startdir}/pkg -name .packlist -delete
}
