print_activate() {
    echo
    echo "You may need to activate the Firetray extension manually in your \
Mozilla application."
    echo
}

# arg 1:  the new package version
post_install() {
  print_activate
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  print_activate
}

