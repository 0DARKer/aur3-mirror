# Contributor: Patrick Kelly <kameo76890 at gmail dot com>

pkgname=gtkada
pkgver=svn
pkgrel=1
pkgdesc="GtkAda is an Ada95 graphical toolkit based on Gtk+, providing the complete set of Gtk+ widgets using the Object-Oriented features of this language. GtkAda supports the latest 2.10 stable releases."
arch=('i686' 'x86_64')
url="http://libre.adacore.com/libre/tools/GtkAda/"
license=('GPL')
groups=("gcc-ada")
depends=("gcc" "gcc-ada" "gtk2")
makedepends=()
optdepends=()
provides=("gtkada")
conflicts=("gtkada")
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #none, SVN will let you know if it didn't checkout right

build() {
	svn checkout http://svn.eu.adacore.com/anonsvn/Dev/trunk/GtkAda
		cd GtkAda
	
	./configure
	
	make || return 1
	
	make DESTDIR=$startdir/pkg install || return 1 
}