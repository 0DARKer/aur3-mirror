pkgname=utouch-frame-bzr
pkgver=33
pkgrel=1
pkgdesc="Touch Frame Library"
arch=(i686 x86_64)
url="https://launchpad.net/utouch-frame"
license=(GPL)
depends=('utouch-evemu-bzr' 'mtdev')
makedepends=('bzr')
conflicts=('utouch-frame')
provides=('utouch-frame')
groups=('unity2d-bzr')

_bzrtrunk=lp:utouch-frame
_bzrmod=utouch-frame

build() {
  cd "$srcdir"
  
  if [ -d ${_bzrmod} ]; then
    bzr up ${_bzrmod}
    msg "The local files are updated."
  else
    bzr co ${_bzrtrunk} ${_bzrmod}
  fi
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build 
  fi
  bzr clone  $srcdir/${_bzrmod} $srcdir/build
  cd $srcdir/build
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() { 
  cd ${srcdir}/build
  make DESTDIR="${pkgdir}" install
}
