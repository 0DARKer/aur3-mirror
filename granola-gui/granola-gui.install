post_install() {
  echo "===> Requires both the granola and granola-connect daemons to be started."
}

post_upgrade() {
  if [ $(vercmp $2 4.0.1) -lt 0 ]; then
    echo "===> Now requires the new granola-connect daemon to be started in"
    echo "===>   addition to the granola daemon."
  fi
}

