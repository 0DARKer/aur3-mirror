_os=linux
_origpkgformat=tar
_origpkgcompress=gz
if [ $CARCH = i686 ]
then
  _origarch=i386
else
  _origarch=$CARCH
fi

pkgname=granola-gui
pkgver=3.3.1
pkgrel=2
pkgdesc="Granola makes computers more energy efficient without slowing them down. Granola is safe, easy to use, and allows your computer to operate as efficiently as possible without sacrificing performance when it's needed most. Help save the world with Granola. (GUI)"
arch=('any')
url="http://grano.la/"
license=('custom')
depends=('python>=2.6.0' 'granola' 'python2-gconf' 'dbus-python' 'gksu' 'pygtk')
makedepends=()
optdepends=()

case $CARCH in
  i686) md5sums=('e65d960d9683db31aee627d63829d7e5') ;;
  x86_64) md5sums=('14841c49d9519f5c95e9be5547da8cda') ;;
esac

source=("https://download.miserware.com/$_os/$_origpkgformat/${_origpkgdistro}$_origarch/${pkgname}-${pkgver}-${_origarch}.${_origpkgformat}.${_origpkgcompress}")

package() {
  #python setup.py install --prefix=/usr --root=$pkgdir/ --optimize=1
  cp -r "$srcdir/$pkgname-$pkgver-$_origarch/usr" "$pkgdir/"
}

