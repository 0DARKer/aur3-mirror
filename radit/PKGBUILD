pkgname=radit
pkgver=1.0.4
pkgrel=9
pkgdesc="Radit es un proyecto de software libre para la automatizaci√≥n de emisoras de radio."
arch=('i686' 'x86_64')
url="http://www.radit.org/net"
license=('GPL')
install=radit.install
depends=('qt4' 'libtaginfo' 'lame' 'vorbis-tools')
optdepends=('aacplusenc: An AAC+ encoder which outputs raw AAC')
md5sums=('SKIP') 
if [ "$CARCH" == x86_64 ]; then
	source=(https://www.dropbox.com/s/utgcrenc7pj35a3/radit-x86_64.tar.gz)
	md5sums=('3f5dc216efcfa848a77e7ae03bf79d37')
elif [ "$CARCH" == i686 ]; then
	source=(https://www.dropbox.com/s/sw1gbm7c4qm43oe/radit-i686.tar.gz)
	md5sums=('0f11128f66cf692b6de92fc77d603a25')
fi

package() {

    cd $srcdir/$pkgname-$CARCH

    install -d $pkgdir/{opt/$pkgname,usr/bin,lib}
    cp -a $srcdir/$pkgname-$CARCH/opt/radit/ $pkgdir/opt
    cp -u $srcdir/$pkgname-$CARCH/lib/* $pkgdir/lib
    cp -u $srcdir/$pkgname-$CARCH/usr/bin/* $pkgdir/usr/bin

    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/pixmaps/radit.png $pkgdir/usr/share/pixmaps/radit.png
    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/applications/Radit.desktop $pkgdir/usr/share/applications/Radit.desktop
    
    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/pixmaps/meteo.png $pkgdir/usr/share/pixmaps/meteo.png
    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/applications/Meteo.desktop $pkgdir/usr/share/applications/Meteo.desktop
    
    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/pixmaps/raditcast.png $pkgdir/usr/share/pixmaps/raditcast.png
    install -Dm655 $srcdir/$pkgname-$CARCH/usr/share/applications/Raditcast.desktop $pkgdir/usr/share/applications/Raditcast.desktop

    chmod -R ugo+rX $pkgdir/opt
   
} 

    
    



