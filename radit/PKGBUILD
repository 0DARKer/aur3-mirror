# Contributor: jfperini <perinijosefederico@gmail.com>

pkgname=radit
pkgver=1.0.4
pkgrel=5
pkgdesc="Radit es un proyecto de software libre para la automatizaci√≥n de emisoras de radio."
arch=('i686' 'x86_64')
url="http://www.radit.org/net"
license=('GPL')
install=radit.install
depends=('qt4' 'libtaginfo' 'lame' 'vorbis-tools')
md5sums=('SKIP') 
if [ "$CARCH" == x86_64 ]; then
	source=(https://www.dropbox.com/s/mvet601q85ncosj/radit-1.0.4-5.x86_64.tar.gz)
	md5sums=('1b9fab6d64b57ddcb09bbc289ac35fca')
elif [ "$CARCH" == i686 ]; then
	source=(https://www.dropbox.com/s/82qkfrth12qwzdf/radit-1.0.4-5.i686.tar.gz)
	md5sums=('f793eddcb7a8d83d841a6b0e4114552c')
fi

package() {

    cd $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH

    install -d $pkgdir/{opt/$pkgname,usr/bin,lib}
    cp -a $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/opt/radit/ $pkgdir/opt
    cp -u $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/lib/* $pkgdir/lib
    cp -u $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/usr/bin/* $pkgdir/usr/bin

    install -Dm655 $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/usr/share/pixmaps/radit.png $pkgdir/usr/share/pixmaps/radit.png
    install -Dm655 $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/usr/share/applications/Radit.desktop $pkgdir/usr/share/applications/Radit.desktop
    
    install -Dm655 $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/usr/share/pixmaps/meteo.png $pkgdir/usr/share/pixmaps/meteo.png
    install -Dm655 $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/usr/share/applications/Meteo.desktop $pkgdir/usr/share/applications/Meteo.desktop
    
    install -Dm655 $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/usr/share/pixmaps/raditcast.png $pkgdir/usr/share/pixmaps/raditcast.png
    install -Dm655 $srcdir/$pkgname-$pkgver-$pkgrel.$CARCH/usr/share/applications/Raditcast.desktop $pkgdir/usr/share/applications/Raditcast.desktop

    chmod -R ugo+rX $pkgdir/opt

} 




