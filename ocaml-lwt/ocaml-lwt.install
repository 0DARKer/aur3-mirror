post_install() {
  echo Registering libs...
  echo $(ocamlfind printconf destdir)/lwt >> $(ocamlfind printconf ldconf)
}

post_upgrade() {
    grep '/lwt' $(ocamlfind printconf ldconf) &> /dev/null || post_install
}

post_remove() {
  echo Unregistering libs...
  sed -i '/lwt/d' $(ocamlfind printconf ldconf)
}
