#Contributor: serp <serp256 at gmail dot com>
srcname=lwt
pkgname="ocaml-$srcname"
pkgver=2.3.0
pkgrel=2
pkgdesc="A library for cooperative threads in OCaml"
arch=('i686' 'x86_64')
url="http://ocsigen.org/lwt/"
license=('LGPL')
depends=('ocaml>=3.11.0' 'ocaml-findlib' 'ocaml-react' 'libev')
source=(http://ocsigen.org/download/$srcname-$pkgver.tar.gz)
md5sums=('d996dfa94dfc199e5f9b1aef55f37ede')
conflicts=('lwt')

build() {
	cd $srcdir/$srcname-$pkgver

	env DESTDIR="$pkgdir" \
	OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)" \
	make
}


package() {
	mkdir -p "$pkgdir/$(ocamlfind printconf destdir)"
	mkdir -p "$pkgdir/$(ocamlfind printconf destdir)/stublibs"
	cd $srcdir/$srcname-$pkgver
	env DESTDIR="$pkgdir" \
	OCAMLFIND_DESTDIR="$pkgdir/$(ocamlfind printconf destdir)" \
	make install
	install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
