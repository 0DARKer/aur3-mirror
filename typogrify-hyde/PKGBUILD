pkgname=typogrify-hyde
pkgver=1.0.1a
pkgrel=1
latestgitver=6937a8a
pkgdesc="Typography related template filters for Django & Jinja2 applications"
url="https://github.com/hyde/typogrify"
license=('BSD')
arch=(any)
depends=('django>=1.0' 'python2-smartypants>=1.6')
makedepends=('python2')
conflicts=('typogrify')
source=(http://kissmyarch.eu/hyde/hyde-typogrify-"${latestgitver}".tar.gz)
md5sums=('f70113c8ba3c17683bf1e725039f7595')

build() {
    cd "${srcdir}"/hyde-typogrify-"${latestgitver}"
    python2 setup.py install --root="${pkgdir}" -O1
}
