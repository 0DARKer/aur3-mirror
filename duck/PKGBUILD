pkgname=duck
pkgver=4.8.17472
pkgrel=1
pkgdesc="Cyberduck CLI"
PKGEXT='.pkg.tar'
arch=('x86_64')
license=('GPL')
options=(!strip)
url="https://duck.sh/"
install=$pkgname.install
makedepends=('rpmextract')
md5sums=('3fb9cdcc525caf8e07b570bd1b6ce55b')
source=("https://dist.duck.sh/duck-$pkgver.x86_64.rpm")
package() {
  rpmextract.sh *
  chmod -R g-w opt
  mv opt "${pkgdir}"
}
