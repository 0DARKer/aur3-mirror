pkgname=duck
pkgver=4.7.17438
pkgrel=2
pkgdesc="Cyberduck CLI"
PKGEXT='.pkg.tar'
arch=('x86_64')
license=('GPL')
options=(!strip)
url="https://duck.sh/"
install=$pkgname.install
makedepends=('rpmextract')
md5sums=('653bd1b46baa0d765a6a16c7e40bc5a9'
)
source=("https://dist.duck.sh/duck-$pkgver.x86_64.rpm")
package() {
  rpmextract.sh *
  chmod -R g-w opt
  mv opt "${pkgdir}"
}
