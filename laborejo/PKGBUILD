# Maintainer: speps <speps at aur dot archlinux dot org>

pkgname=laborejo
pkgver=0.7
pkgrel=1
pkgdesc="Music Notation Workshop"
arch=(any)
url="http://www.$pkgname.org/"
license=('GPL3')
depends=('pyqt')
optdepends=('lilypond: lilypond support'
            'python-pysmf: MIDI export'
            'python-pyliblo: session support'
            'calfbox: playback'
            'jack: JACK output')
source=("https://github.com/nilsgey/Laborejo/tarball/$pkgver"
        "$pkgname.sh")
md5sums=('28789845a7d95958e57e7320e39028c3'
         '7b8088f4a5951bb24788f5c0969aeae7')

package() {
  cd "$srcdir/nilsgey-Laborejo-"*

  # data
  install -d "$pkgdir/usr/share/$pkgname"
  cp -a * "$pkgdir/usr/share/$pkgname"

  # launcher
  install -Dm755 ../$pkgname.sh \
    "$pkgdir/usr/bin/$pkgname"
}

# vim:set ts=2 sw=2 et:
