pkgname='perl-dancer-plugin-database'
pkgver='1.20'
pkgrel='1'
pkgdesc="easy database connections for Dancer applications"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-dancer>=1.175' 'perl-dbi')
makedepends=()
url='http://search.cpan.org/dist/Dancer-Plugin-Database'
source=('http://search.cpan.org/CPAN/authors/id/B/BI/BIGPRESH/Dancer-Plugin-Database-1.20.tar.gz')
md5sums=('cd4fee05b33d7613110930878c80d5c6')

build() {
  local PERL=/usr/bin/perl DIST_DIR="${srcdir}/Dancer-Plugin-Database-1.20"

  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$DIST_DIR"
    $PERL Makefile.PL
    make
    make test
    make install
  )

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

