options=('!emptydirs')
depends=('perl-dancer>=1.175' 'perl-dbi')
makedepends=()
url='http://search.cpan.org/dist/Dancer-Plugin-Database'
source=('http://search.cpan.org/CPAN/authors/id/B/BI/BIGPRESH/Dancer-Plugin-Database-1.50.tar.gz')
