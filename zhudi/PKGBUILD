# Maintainer: Ma Jiehong <ma dot jiehong on gmail>
pkgname=zhudi
pkgver=1.0
pkgrel=2
pkgdesc="A Python/GTK3+ GUI to Chinese -English-French-German dictionnaries (CEDICT, CFDICT, HanDeDict, ChE-Dicc…). It also provides pinyin and zhuyin pronunciaton."
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/zhudi/"
license=('GPL3')
depends=('python' 'python-gobject' 'pygobject-devel' 'gobject-introspection' 'pango')
install=zhudi.install
changelog=
source=(http://nchc.dl.sourceforge.net/project/zhudi/$pkgname-$pkgver.tar.gz)
md5sums=('d9263d36aabf3dbaa74f482e8d873fe0') #generate with 'makepkg -g'

package() {
	cd "$srcdir/$pkgname"
	msg "Installation in progress…"
	
	install -D -m755 zhudi.py ${pkgdir}/usr/share/${pkgname}/zhudi.py

	install -D -m755 zhudi ${pkgdir}/usr/bin/zhudi
    install -D -m755 zhudi-split ${pkgdir}/usr/bin/zhudi-split
}

