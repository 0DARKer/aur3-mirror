# Maintainer: Ma Jiehong <ma dot jiehong on gmail>
pkgname=zhudi
pkgver=0.9
pkgrel=1
pkgdesc="A GTK+ GUI written in Python to CEDICT and CFDICT providing pinyin and zhuyin"
arch=('i686' 'x86_64')
url="https://sourceforge.net/projects/zhudi/"
license=('GPL3')
depends=('python2' 'pygtk' 'gtk2' 'pango')
install=zhudi.install
changelog=
source=(http://nchc.dl.sourceforge.net/project/zhudi/$pkgname-$pkgver.tar.gz)
md5sums=('4f9c34b1fee8c1a0639252746301cb3c') #generate with 'makepkg -g'

package() {
	cd "$srcdir/$pkgname"
	msg "Installation in progressâ€¦"
	
	install -D -m755 pin1yin1_to_zhuyin ${pkgdir}/usr/share/${pkgname}/pin1yin1_to_zhuyin
	install -D -m755 split_dictionary.py ${pkgdir}/usr/share/${pkgname}/split_dictionary.py
	install -D -m755 Startup_window.py ${pkgdir}/usr/share/${pkgname}/Startup_window.py
	install -D -m755 README ${pkgdir}/usr/share/${pkgname}/README
	install -D -m644 COPYING.pdf ${pkgdir}/usr/share/licenses/${pkgname}/COPYING.pdf
	install -D -m755 zhudi ${pkgdir}/usr/bin/zhudi
	install -D -m755 zhudi-split ${pkgdir}/usr/bin/zhudi-split
}

