# Contributor: Juanma Hernandez <juanmah@gmail.com>

pkgname=rsw
pkgver=0.4
pkgrel=1
pkgdesc="Real-time Sunlight Wallpaper"
arch=('i686' 'x86_64')
url="http://realtimesunlightwallpaper.weebly.com/"
license=('GPL2' 'LGPL2.1')
depends=('gtk3' 'hicolor-icon-theme' 'curl')
makedepends=('')
provides=('rsw')
install=rsw.install
source=(http://launchpad.net/realtimesunlightwallpaper/trunk/v$pkgver/+download/gtk-sunlight-$pkgver.tar.gz)
md5sums=('b6ecbab662c93bbb74cad4462cda2e48')

build() {

        cd $startdir/src/gtk-sunlight-$pkgver
	make clean || return 1
        make || return 1
        make DESTDIR=${startdir}/pkg install || return 1

}
