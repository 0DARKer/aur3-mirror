pkgname=rsw
pkgver=0.3.4
pkgrel=2
pkgdesc="Real-time Sunlight Wallpaper"
arch=('i686' 'x86_64')
url="http://realtimesunlightwallpaper.weebly.com/"
license=('GPL2' 'LGPL2.1')
depends=('gtk2' 'curl')
makedepends=('')
provides=('rsw')
source=(http://launchpad.net/realtimesunlightwallpaper/trunk/v$pkgver/+download/gtk-sunlight-$pkgver-ubuntu-all.tar.gz)
md5sums=('174a81b7a7e01c19fd4e5903e1cd39cd')

build() {

        cd $startdir/src/gtk-sunlight-$pkgver-ubuntu-all
	make clean || return 1
        make || return 1
        make DESTDIR=${startdir}/pkg install || return 1

}
