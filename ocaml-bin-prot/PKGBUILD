# Maintainer : Nicolas Pouillard <nicolas(dot)pouillard(at)gmail(dot)com>
# Contributor: Sylvester Johansson <scj(at)archlinux(dot)us>
pkgname=ocaml-bin-prot
pkgver=1.3.0
pkgrel=1
pkgdesc="binary protocol generator for OCaml"
arch=('i686' 'x86_64')
url="http://www.ocaml.info/home/ocaml_sources.html"
license=('LGPL')
depends=('ocaml' 'ocaml-ounit' 'ocaml-type-conv')
install=ocaml-bin-prot.install
source=(http://www.janestreet.com/ocaml/bin_prot-$pkgver.tar.gz)
options=(!strip !makeflags)
md5sums=('148030dd58050ed39c0be2bdc92a09f5')

build() {
  cd "$srcdir/bin-prot"

  mkdir -p $pkgdir$(ocamlfind printconf destdir)
  make || return 1
}

package(){
  cd "$srcdir/bin-prot"

  export OCAMLFIND_LDCONF=ignore
  export OCAMLFIND_DESTDIR="$pkgdir$(ocamlfind printconf destdir)"
  make install
  install -Dm 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=2 sw=2 et:
