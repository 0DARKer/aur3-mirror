# Maintainer: Mike Redd <mredd@0tue0.com>
# Contributor: Mike Redd <mredd@0tue0.com>

pkgname=fortune-mod-misfits
pkgver=0.1
pkgrel=1.1
pkgdesc="Misfits (UK) Series on E4 fortune cookie file"
url="http://fortunemod.tehspork.com"
arch=('any')
license=('unknown')
depends=('fortune-mod' 'xz' 'tar')
source=($url/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('ff32d96c1db14dc0c4e3ccf5d822e508')

build() {
  mkdir $srcdir/$pkgname-$pkgver/
  xz -cd $srcdir/$pkgname-$pkgver.tar.xz | tar xvf -
  mv -i $srcdir/misfits $srcdir/$pkgname-$pkgver/
  strfile $srcdir/$pkgname-$pkgver/misfits
  install -d $pkgdir/usr/share/fortune || return 1
  install -m 644 $srcdir/$pkgname-$pkgver/misfits* $pkgdir/usr/share/fortune \
    || return 1
}

