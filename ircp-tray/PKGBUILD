pkgname=ircp-tray
pkgver=0.7.5.1
pkgrel=2
pkgdesc="A simple IrDA wireless file transfer application"
arch=('i686')
url="https://launchpad.net/ircp-tray"
license=('GPLv2+')
depends=('gtk2' 'libnotify' 'openobex' 'irda-utils' 'intltool')
makedepends=('gtk2' 'libnotify' 'openobex')
install=$pkgname.install
source=(http://launchpad.net/ircp-tray/0.7/0.7.5.1/+download/$pkgname-$pkgver.tar.gz ircptray_main.patch recvfile.patch)
md5sums=('628ac77e055d6231a7f63adbe4c3470b' '3407ac81b9a89f61e6b4427d2598b673' '4d996f9e98e065e22a4f9084c625f8b1') 

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p0 < ../ircptray_main.patch || return 1
  patch -p0 < ../recvfile.patch || return 1
  ./autogen.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
