# Maintainer: Gustavo Alvarez <sl1pkn07@gmail.com>

pkgname=emgdui
pkgver=1.0
pkgrel=1
pkgdesc="emgdui Intel EMGD drivers GUI"
arch=('i686')
url="http://edc.intel.com/Software/Downloads/EMGD/"
license=('custom')
makedepends=('xproto' 'libxrandr' 'libx11' 'xorg-server=1.9.4.901' 'libpciaccess' 'dkms-emgd' 'xf86-video-emgd')
source=(https://launchpad.net/~gma500/+archive/emgd/+files/${pkgname}_${pkgver}-1.2.0~ppa1.tar.gz)
md5sums=('1b48e34d82fe45019c0a28942af4bad4')

build() {
     cd ${srcdir}/${pkgname}-${pkgver}/
     make     
}

package() {
     cd ${srcdir}/${pkgname}-${pkgver}/
     install -Dm755 emgdui ${pkgdir}/usr/bin/emgdui
     install -Dm755 Readme.txt ${pkgdir}/usr/share/doc/$pkgname/Readme.txt
     install -Dm755 sample_license.txt ${pkgdir}/usr/share/licenses/$pkgname/sample_license.txt
     install -Dm755 debian/emgdui.desktop ${pkgdir}/usr/share/applications/emgdui.desktop
} 
