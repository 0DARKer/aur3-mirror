# Contributor: Judd <jvinet@zeroflux.org>

_pkgbase=libevent
pkgname=lib32-${_pkgbase}
pkgver=2.0.18
pkgrel=1
pkgdesc="An event notification library (32 bit)"
arch=('x86_64')
url="http://www.monkey.org/~provos/libevent/"
license=('GPL2')
depends=('lib32-openssl' "${_pkgbase}")
makedepends=('gcc-multilib')
options=('!libtool')
source=(https://github.com/downloads/libevent/libevent/${_pkgbase}-${pkgver}-stable.tar.gz)
sha1sums=('2a2cc87ce1945f43dfa5a5f9575fef3d14a8f57a')

build() {
  export CC='gcc -m32'
  export CXX='g++ -m32'
  export PKGC_CONFIG_PATH='/usr/lib32/pkgconfig'

  cd "${srcdir}/${_pkgbase}-${pkgver}-stable"
  ./configure --prefix=/usr --sysconfdir=/etc --libdir=/usr/lib32
  make
}

package() {
  cd "${srcdir}/${_pkgbase}-${pkgver}-stable"
  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/usr/{bin,include}
}
