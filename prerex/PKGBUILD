# Contributor: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=prerex  
pkgver=6.0.4
pkgrel=1
pkgdesc="a LaTeX document style for prerequisite charts"
url="http://www.prerex.com"
arch=('i686' 'x86_64')
license=('GPL')
depends=('texlive-core')
install=prerex.install
source=($pkgname-$pkgver.zip::http://tug.ctan.org/get/graphics/$pkgname.zip)
md5sums=('d97f227054e8a55c58ee5335c24a0a39')

build() {
  cd $srcdir/$pkgname/
  tar xf $pkgname-6.0.3.tar.gz
  cd $pkgname-6.0.3
  ./configure --prefix=/usr 
  make 
}
package () {
  install -Dm644 $srcdir/$pkgname/$pkgname.sty \
    $pkgdir/usr/share/texmf/tex/latex/$pkgname/$pkgname.sty 
  cd $srcdir/$pkgname/$pkgname-6.0.3
  make DESTDIR=$pkgdir mandir=/usr/share/man install
  install -d $pkgdir/usr/share/doc/prerex
  cp $srcdir/$pkgname/doc/* $pkgdir/usr/share/doc/prerex
}
