# Contributor: Anton Leontiev <bunder /at/ t-25.ru>
pkgname=perl-dbix-dbschema
pkgver=0.39
pkgrel=1
pkgdesc="Perl modile providing database-independent schema objects"
arch=("any")
url="http://search.cpan.org/dist/DBIx-DBSchema/"
license=("GPL" "PerlArtistic")
depends=("perl" "perl-dbi" "perl-freezethaw")
options=(!emptydirs)
source=(http://search.cpan.org/CPAN/authors/id/I/IV/IVAN/DBIx-DBSchema-$pkgver.tar.gz)
md5sums=("532a5cfa5bac9f947ef9b960b915a88f")

build() {
  cd "$srcdir/DBIx-DBSchema-$pkgver"
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/DBIx-DBSchema-$pkgver"
  make test
}

package() {
  cd "$srcdir/DBIx-DBSchema-$pkgver"
  make install DESTDIR="$pkgdir"
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
