pkgname=telepathy-sunshine
pkgver=0.1.8
pkgrel=1
pkgdesc="Gadu-Gadu connection manager"
arch=('i686' 'x86_64')
url="http://git.collabora.co.uk/?p=telepathy-sunshine.git"
groups=('telepathy')
license=('GPL3')
depends=('twisted' 'python-telepathy')
optdepends=('pyopenssl: SSL support')
source=('http://telepathy.freedesktop.org/releases/telepathy-sunshine/telepathy-sunshine-0.1.8.tar.gz')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --libexecdir=/usr/lib/telepathy
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
md5sums=('b6ae05a19c237604e284d2ed3ff20aae')
