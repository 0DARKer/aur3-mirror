# Maintainer: Filip Brcic <brcha@gna.org>

pkgname=android-qt5-qtjsbackend-git
pkgver=20130314
pkgrel=1
pkgdesc="Qt 5 for Android: qtjsbackend module (includes QtV8)"
arch=('i686' 'x86_64')
url="http://qt-project.org/wiki/Qt5ForAndroidBuilding"
license=('LGPL')
makedepends=('python' 'git' 'android-qt5-qtbase-git')
options=(!libtool !strip)
depends=('gcc-libs')

_gitroot="git://gitorious.org/qt/qtjsbackend.git"
_gitname=qt5-qtjsbackend
_gitbranch=dev

build() {
  if [ ! -d "${_gitname}" ]; then
    git clone -b ${_gitbranch} --depth 1 ${_gitroot} ${_gitname} && cd ${_gitname}
  else
    cd ${_gitname} && git reset --hard && git pull origin && git clean -dfx
  fi
  
  msg "GIT checkout done."
  
  /opt/android-qt5/bin/qmake
  make
}

package() {
  cd "${_gitname}"
  
  make INSTALL_ROOT="${pkgdir}" install
    
  # Strip by hand, system strip doesn't work on arm binaries

  # arm dynamic libs in lib
  /opt/android-ndk/toolchains/arm-linux-androideabi-4.7/prebuilt/linux-x86/bin/arm-linux-androideabi-strip ${STRIP_SHARED} \
    ${pkgdir}/opt/android-qt5/lib/*.so*
}
