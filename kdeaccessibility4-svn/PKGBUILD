# Contributor: Lawrence Lee <valheru@facticius.net>
pkgname=kdeaccessibility4-svn
pkgver=1235892
pkgrel=1
pkgdesc="KDE 4 Accessibility Aids"
arch=('i686' 'x86_64')
url="http://www.kde.org/"
license=('GPL')
depends=('kdebase4-runtime-git' 'speech-dispatcher')
makedepends=('subversion' 'cmake' 'automoc4')
conflicts=('kdeaccessibility')
groups=('kde4-git')
install="kdeaccessibility4-git.install"

_svntrunk=svn://anonsvn.kde.org/home/kde/trunk/KDE/kdeaccessibility
_svnmod=kdeaccessibility

build() {
  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up)
  else
    svn co $_svntrunk $_svnmod
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning the previous build directory..."
    rm -rf ${srcdir}/build
  fi 

  mkdir ${srcdir}/build
  cd ${srcdir}/build
  cmake $startdir/src/$_svnmod -DCMAKE_BUILD_TYPE=debugfull \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_Opentts=OFF
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}