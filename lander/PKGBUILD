pkgname=lander
pkgver=0.5.2
pkgrel=1
pkgdesc="A Lunar Lander clone."
arch=('i686' 'x86_64')
url="http://www.doof.me.uk/lunar-lander/"
license=('GPL')
depends=('sdl_mixer')
source=(http://www.nickg.me.uk/files/lander-0.5.tar.gz)
md5sums=('9152fc78a173390a92cf25371014efba')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
