pkgname=openvas-libraries
pkgver=3.1.4
pkgrel=1
pkgdesc="The OpenVAS libraries"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
depends=('gnutls' 'libpcap' 'gpgme' 'cmake')
source=(http://wald.intevation.org/frs/download.php/784/$pkgname-$pkgver.tar.gz)
md5sums=('ab8258469092affbfe201ac3672e568a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-release
  make || return 1
  make DESTDIR="$pkgdir/" install
}

