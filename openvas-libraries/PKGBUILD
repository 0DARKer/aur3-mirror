pkgname=openvas-libraries
pkgver=4.0.5
pkgrel=1
pkgdesc="The OpenVAS libraries"
arch=('i686' 'x86_64')
url="http://www.openvas.org/"
license=('GPL')
# depends=('gnutls' 'libpcap' 'gpgme' 'cmake','wmiclient')
depends=('gnutls' 'libpcap' 'gpgme' 'cmake')
source=(http://wald.intevation.org/frs/download.php/872/$pkgname-$pkgver.tar.gz openvas-nowerror.patch)
md5sums=('88152081a0a0d2e8dfd63538999f56ef' '47b8310bbd97b0ef491414d26ddb8f03')
#source=(http://wald.intevation.org/frs/download.php/872/$pkgname-$pkgver.tar.gz)
#md5sums=('88152081a0a0d2e8dfd63538999f56ef')
CFLAGS="-Wno-error"

build() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -p1 < "$startdir/src/openvas-nowerror.patch"

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DSYSCONFDIR=/etc -DLOCALSTATEDIR=/var .
  
  make CC=--disable-werror || return 1
  make DESTDIR="$pkgdir/" install
}

