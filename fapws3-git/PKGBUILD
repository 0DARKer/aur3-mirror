# Maintainer: sbillaudelle <stein@cream-project.org>

pkgname=fapws3-git
pkgver=0.4
pkgrel=1
pkgdesc="Fast Asynchronous Python Web Server (based on libev)."
url="http://github.com/william-os4y/fapws3"
arch=('i686')
license=('LGPL')
depends=('libev')
source=()
md5sums=()

_gitroot="git://github.com/william-os4y/fapws3.git"


build()
{
  if [ ! -d ./${_bzrmod} ]; then
    git clone $_gitroot $srcdir/ || return 1
  fi
  cd $srcdir/

  python setup.py install --prefix=/usr --root="$pkgdir" || return
}
