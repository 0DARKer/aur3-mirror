# Maintainer: Sven-Hendrik Haase <sh@lutzhaase.com>
pkgname=mars-shooter
pkgver=0.7.1
pkgrel=1
pkgdesc="A ridiculous space shooter with nice graphics"
arch=(i686 x86_64)
url="http://mars-game.sourceforge.net/"
license=('GPL')
depends=('sfml2-svn' 'taglib' 'fribidi')
makedepends=('cmake')
source=(http://sourceforge.net/projects/mars-game/files/mars_source_0.7.1.tar.gz)
   
md5sums=('d0772a30c175b4b6f96fc28b3ae6d97d')

build() {
  cd "$srcdir/mars-game"

  [[ -d build ]] && rm -r build
  mkdir build && cd build
  cmake ..
  make
}

package() {
  cd "$srcdir/mars-game"

  mkdir -p $pkgdir/usr/share/marsshooter
  mkdir -p $pkgdir/usr/bin/
  cp -r credits.txt resources data/* license.txt $pkgdir/usr/share/marsshooter
  cp mars $pkgdir/usr/bin/mars-shooter
  find $pkgdir -name *.svn | xargs rm -rf
}
