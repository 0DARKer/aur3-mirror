# Contributor: sickhate <sickhate@tux-linux.net>
# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>

pkgname=simdock
pkgver=1.2.6
pkgrel=1
pkgdesc="Fast and customizable dockbar."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/simdock/"
license=('GPL')
depends=('wxgtk2.8' 'libwnck' 'gconf')
install=simdock.install
source=(git://github.com/onli/simdock.git)
md5sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"
  ./configure LDFLAGS=-lX11 --with-wx-config=/usr/bin/wx-config-2.8 --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir" install
  rm -rf $pkgdir/usr/local
}
