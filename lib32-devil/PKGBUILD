pkgname=lib32-devil
pkgname32=${pkgname/lib32-/}
pkgver=1.7.8
pkgrel=2
pkgrel32=6
pkgdesc="Library for reading several different image formats"
arch=(x86_64)
url="http://openil.sourceforge.net/"
license=('GPL')
depends=('lib32-allegro>=4.2.2' 'lib32-sdl' 'lib32-libpng' 'lib32-zlib' 'lib32-libjpeg' 'lib32-libtiff' 'lib32-libmng')
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname32}-${pkgver}-${pkgrel32}-i686.pkg.tar.gz)
md5sums=('42340dcea64c9dfb40fe2c93554e9c6a')

build() {
 mkdir -p $startdir/pkg/opt/lib32/usr/
 cp -rPf $startdir/src/usr/lib $startdir/pkg/opt/lib32/usr/lib
}
