# Maintainer: Michele Mocciola <mickele>
# Contributor: Brice Méalier <mealier_brice__AT__yahoo__DOT__fr>
pkgname=scotch
pkgver=5.1.8a
pkgrel=1
pkgdesc="SCOTCH is a software package and libraries for graph, mesh and hypergraph partitioning, static mapping, and sparse matrix block ordering"
url="http://www.labri.fr/perso/pelegrin/scotch/"
license="custom: CeCILL-C free/libre software license"
depends=('zlib')
makedepends=('make' 'gcc>=4.5.0' 'patch' 'coreutils' 'sed')
provides=()
conflicts=()
replaces=()
backup=()
arch=('i686' 'x86_64')
install=${pkgname}.install
source=("http://gforge.inria.fr/frs/download.php/26885/${pkgname}_${pkgver}.tar.gz" "${pkgname}-${pkgver}.diff" "Makefile.inc")

build() {
  cd "${srcdir}/${pkgname}_${pkgver}" || return 1
  patch -Np1 -i ${srcdir}/${pkgname}-${pkgver}.diff || return 1

  cd src || return 1
  sed "s|-O3|$CFLAGS|g" < "${srcdir}/Makefile.inc" > Makefile.inc

  # necessary to compile with gcc-4.5
  for _FILE in `grep -R -l "restrict" *`
  do
    sed -e "s|restrict|__restrict|g" \
        -i ${_FILE}
  done

  make scotch || return 1

  mkdir -p "${pkgdir}/usr/bin" || return 1
  mkdir -p "${pkgdir}/usr/lib" || return 1
  mkdir -p "${pkgdir}/usr/include/scotch" || return 1

  cd "${srcdir}/${pkgname}_${pkgver}" || return 1

  mv include/*.h "${pkgdir}/usr/include/scotch" || return 1
  mv lib/lib* "${pkgdir}/usr/lib" || return 1
  cd "${pkgdir}/usr/lib" || return 1
  for _FILE in `ls *.so`
  do
	mv -f ${_FILE} ${_FILE}.${pkgver} || return 1
	ln -s ${_FILE}.${pkgver} ${_FILE}.${pkgver:0:1} || return 1
  done

  cd "${srcdir}/${pkgname}_${pkgver}" || return 1
  mv bin/* "${pkgdir}/usr/bin" || return 1

  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname} || return 1
  cp "${srcdir}/${pkgname}_${pkgver}/doc/CeCILL-C_V1-en.txt" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE" || return 1
}
md5sums=('114b07a81850131ec5ccf8b66172e944'
         'f8c9a8dafdeb8bef8d1ebfea7e8d22ba'
         '620fbb1d04c26ef135e61b147f85cfe3')
