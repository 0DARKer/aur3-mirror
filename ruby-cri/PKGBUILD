# Maintainer:   Lucky <archlinux@builds.lucky.li>

pkgname=ruby-cri
_gemname="${pkgname#ruby-}"
pkgver=2.3.0
pkgrel=1
pkgdesc="Cri is a library for building easy-to-use commandline tools."
url="http://rubygems.org/gems/cri"
license=("MIT")
arch=("any")
depends=("ruby")
source=("http://gems.rubyforge.org/gems/${_gemname}-${pkgver}.gem")
noextract=("${_gemname}-${pkgver}.gem")
md5sums=("683e21b47fcfce52194125d6c3b3a428")
sha1sums=("358d4a7f3a45208c4e52356ec36c1ddd6e9f6f75")

package() {
  cd "${srcdir}"
  export HOME="/tmp"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "${pkgdir}${_gemdir}" \
    -n "${pkgdir}/usr/bin" "${_gemname}-${pkgver}.gem"
}
