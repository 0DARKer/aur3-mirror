# Maintainer: Manish Munikar <munikarmanish at gmail dot com>

pkgname=photocrypt-git
pkgver=0.1.r2.gccd666a
pkgrel=1
pkgdesc="A steganography program that can hide text in image"
arch=('any')
url="https://github.com/mdbct/photocrypt"
license=('BSD')
depends=()
makedepends=('git' 'pkg-config' 'opencv' 'gtkmm' 'openssl')
source=('git+https://github.com/mdbct/photocrypt')
md5sums=('SKIP') #generate with 'makepkg -g'

_gitroot=https://github.com/mdbct/photocrypt
_gitname=photocrypt

pkgver() {
  cd ${srcdir}/${_gitname}
  git describe --long --tags 2>/dev/null | sed 's|-|-r|; s|-|\.|g'
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin master
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  cd "${srcdir}/${_gitname}"
  make all
}

package() {
  mkdir "${pkgdir}/opt"
  mkdir "${pkgdir}/opt/${_gitname}"
  mkdir "${pkgdir}/usr"
  mkdir "${pkgdir}/usr/bin"

  cd "${srcdir}/${_gitname}"
  cp "photocrypt" "steg" "unsteg" "README.md" "${pkgdir}/opt/${_gitname}/"

  ln -s "/opt/${_gitname}/photocrypt" "${pkgdir}/usr/bin/photocrypt"
  ln -s "/opt/${_gitname}/steg"       "${pkgdir}/usr/bin/steg"
  ln -s "/opt/${_gitname}/unsteg"     "${pkgdir}/usr/bin/unsteg"
}

# vim:set ts=2 sw=2 et:
