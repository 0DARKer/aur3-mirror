#!/bin/bash

if [[ "$DESKTOP_SESSION" == "kf5-plasma" ]]; then
	export KF5="/opt/kf5"
	export XDG_DATA_DIRS="$KF5/share:/usr/share:/usr/local/share"
	export XDG_CONFIG_DIRS="$KF5/etc/xdg:/etc/xdg"
	export PATH="$KF5/bin:$PATH"
	export QT_PLUGIN_PATH="$KF5/lib/plugins:/usr/lib/plugins:/usr/lib/qt/plugins"
	export QML2_IMPORT_PATH="$KF5/lib/qml:/usr/lib/qml:/usr/lib/qt/qml"
	export QML_IMPORT_PATH="$QML2_IMPORT_PATH"
	export KDE_SESSION_VERSION=5
	export KDE_FULL_SESSION=true
fi
