# Maintainer: zowki
# Contributor: zowki

pkgname=gmountiso
pkgver=0.4
pkgrel=1
pkgdesc="A small tool for a Virtual CD/DVD (mounting images) written using PyGTK and Glade. (this is a forntend of mount)"
arch=(i686 x86_64)
url="http://www.crans.org/Syst%C3%A8meLinux/GmountIso?highlight=(gmount)"
license=('GPL')
depends=(python libglade)
source=("http://mirrors.kernel.org/ubuntu/pool/universe/g/gmountiso/gmountiso_0.4-0ubuntu2_all.deb")
md5sums=('50749b415f22617581c2511403970422')

build() {
    cd $startdir/src
    ar x gmountiso_0.4-0ubuntu2_all.deb
    tar -xvzf data.tar.gz
    cp -R $startdir/src/usr $startdir/pkg
    rm -Rf usr data.tar.gz control.tar.gz debian-binary
}
