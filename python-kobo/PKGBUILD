# PKGBUILD made by: Gris Ge <cnfourt@gmail.com>
 
pkgname=python-kobo
pkgver=0.3.1
pkgrel=1
pkgdesc="Kobo is set of python modules designed for rapid tools development."
arch=('i686' 'x86_64')
url="https://fedorahosted.org/kobo/"
license=('GPL')
depends=('python2=2.7')
source=('https://fedorahosted.org/releases/k/o/kobo/kobo-0.3.1.tar.bz2')
md5sums=('39df4c0eee6a003df3d2261e19f766b9')

build() {
    cd $srcdir/kobo-$pkgver
    python2 setup.py install --prefix=/usr --root="$pkgdir"
}

