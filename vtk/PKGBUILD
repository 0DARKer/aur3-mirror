# Contributor: Dmitriy Morozov <archlinux@foxcub.org> 
pkgname=vtk
pkgmainver=5.6
pkgver=$pkgmainver.1
pkgrel=1 
pkgdesc="Visualization toolkit"
url="http://www.vtk.org"
arch=('i686' 'x86_64')
license="BSD" 
depends=('cmake')
source=(http://www.vtk.org/files/release/$pkgmainver/$pkgname-$pkgver.tar.gz)
md5sums=('b80a76435207c5d0f74dfcab15b75181')

build() 
{ 
    mkdir -p $srcdir/VTK/build
    cd $srcdir/VTK/build
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr
    make
    make install DESTDIR=$pkgdir
}
