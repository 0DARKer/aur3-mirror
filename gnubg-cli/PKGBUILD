pkgname=gnubg-cli
pkgver=20091025
pkgrel=1
pkgdesc="GNU Backgammon (command line interface only)"
arch=('i686' 'x86_64')
url="http://www.gnubg.org"
license=('GPL')
depends=('python')
conflicts=('gnubg')
source=(http://www.gnubg.org/media/sources/gnubg-source-SNAPSHOT-${pkgver}.tar.gz)
md5sums=('2068d767841521d62dbb547e6c76104e')


build() {
  cd ${srcdir}/gnubg
  ./autogen.sh || return 1
  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc --mandir=/usr/share/man --without-gtk || return 1
  make || return 1
  make install DESTDIR=${pkgdir} || return 1
}
