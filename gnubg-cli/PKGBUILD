# Maintainer: jsteel <jsteel at vorx dot com>
# Contributor: Dmitrij D. Czarkoff <czarkoff@gmail.com>

pkgname=gnubg-cli
_pkgname=gnubg
pkgver=20111107
pkgrel=1
pkgdesc="Backgammon (command line interface)"
arch=('i686' 'x86_64')
url="http://www.gnubg.org"
license=('GPL')
depends=('python' 'gtkglext' 'bison' 'flex')
conflicts=('gnubg' 'gnubg-cvs')
source=(http://www.gnubg.org/media/sources/$_pkgname-source-SNAPSHOT-$pkgver.tar.gz)
md5sums=('1cece91210975c7ebe5dc01d6e64cf3b')

build() {
  cd "$srcdir/$_pkgname"
  ./autogen.sh
  ./configure --prefix=/usr --bindir=/usr/bin --sysconfdir=/etc --mandir=/usr/share/man --without-gtk
  make
}

package() {
  cd "$srcdir/$_pkgname"
  make DESTDIR="$pkgdir" install
}
