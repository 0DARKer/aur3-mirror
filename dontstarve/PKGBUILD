# Maintainer: Hugo Osvaldo Barrera <hugo@osvaldobarrera.com.ar>

pkgname=dontstarve
pkgver=1369852738
pkgrel=1
pkgdesc="An open world survival video game."
arch=("i686" "x86_64")
url="http://www.dontstarvegame.com/"
license=('Custom')
depends=()
makedepends=()
optdepends=()
options=(!strip)
source=("humble://${pkgname}_x64$pkgver.tar.gz" "dontstarve.sh")
md5sums=('754b88a2f42b50dc2b274bc6df2b4d78'
         'c4ef11f80691f7a967b6e1fda6d2bfcb')

package() {
  cd "$srcdir/$pkgname"

  install -dm 755 "$pkgdir/opt/dontstarve/"
  find . -type f -exec install -D {} "$pkgdir/opt/dontstarve/{}" \;

  install -dm 755 "$pkgdir/usr/bin"
  install -Dm 755 ../dontstarve.sh "$pkgdir/usr/bin/dontstarve"
}
