pkgname=kst
pkgver=2.0.0.beta4
pkgrel=1
pkgdesc="Fast real-time large-dataset viewing and plotting tool for KDE"
arch=(i686 x86_64)
url="http://kst.kde.org"
license=('GPL')
depends=(gsl readline qt kdelibs muparser)
makedepends=()
optdepends=()
provides=(kst)
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://galadriel.astro.utoronto.ca/kst/kst-2.0.0-beta4.tgz)
noextract=()
md5sums=('8a948a93d6ff02fbf45f37a1a6ed3119')


build() {
	cd "$srcdir/$pkgname-2.0.0-beta4"
#	export INSTDIR="$pkgdir/usr/"

	./install-kst release "$pkgdir/usr/" || return 1
}

