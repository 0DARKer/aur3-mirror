pkgname=r-ggplot2
pkgver=0.8.8
pkgrel=1
pkgdesc="An implementation of the grammar of graphics in R."
arch=('i686' 'x86_64')
url="http://cran.r-project.org/web/packages/ggplot2/index.html"
license=('GPL')
depends=('r' 'r-colorspace' 'r-digest' 'r-proto' 'r-reshape')
source=(http://cran.r-project.org/src/contrib/ggplot2_$pkgver.tar.gz)

build() {
 mkdir -p $pkgdir/usr/lib/R/library
 cd $srcdir
 R CMD INSTALL -l ../pkg/usr/lib/R/library ./ggplot2
 rm $pkgdir/usr/lib/R/library/R.css

 #reshape doesn't come with a license spelled out in its entirety, it just says 'MIT'
# install -D -m644 $srcdir/reshape/DESCRIPTION $pkgdir/usr/share/licenses/r-reshape/DESCRIPTION
}
md5sums=('415a006c112b59488a2eac4d319ae45b')
