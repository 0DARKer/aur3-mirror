# Maintainer: Janno T. <jaxnnxot@gmail.com>

pkgname=perl-math-primality
_realname=Math-Primality
pkgver=0.04
pkgrel=0
pkgdesc="Perl/CPAN Module Math::Primality : Advanced Primality Algorithms using GMP"
arch=('any')
url="http://search.cpan.org/dist/${_realname}/"
license=('GPL' 'Artistic')
depends=('perl>=5.10.0')
source=("http://www.cpan.org/authors/id/B/BU/BUBAFLUB/${_realname}-${pkgver}.tar.gz")
md5sums=('357d19c10bbca2f81d5a2d42f6bb3f54')
options=(!emptydirs)

build() {
  cd "${srcdir}/${_realname}-${pkgver}"
  # Install module into the vendor directories.
  perl Makefile.PL INSTALLDIRS=vendor
  make
}   

package() {
  cd "${srcdir}/${_realname}-${pkgver}"
  make DESTDIR="${pkgdir}" install

  # Remove .packlist and perllocal.pod files.
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name 'perllocal.pod' -delete
}
