# Maintainer: Patrik Plihal <patrik.plihal@gmail.com>

pkgname=ckan
pkgver=v1.5.2
pkgrel=2
pkgdesc='The CKAN is a metadata respository and associated tools to allow you to find, install, and manage mods for Kerbal Space Program (ksp)'
arch=('any')
url="https://github.com/KSP-CKAN/CKAN/"
license=('MIT')
depends=('git' 'curl')

source=('git+https://github.com/KSP-CKAN/CKAN')
md5sums=('SKIP')

pkgver() {
  cd $srcdir/CKAN
  git describe --abbrev=0 --tags | cut -d'-' -f3
}

build() {
  msg2 "Found release: $pkgver - fetching it from github"
  curl -L "https://github.com/KSP-CKAN/CKAN/releases/download/$pkgver/ckan.exe" -o ckan
}

package() {
  mkdir -p "$pkgdir/usr/bin/"
  cp "$srcdir/ckan" "$pkgdir/usr/bin/ckan"
  chmod 755 "$pkgdir/usr/bin/ckan"
}


