# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer:  <ying@althonx4>
pkgname=dislin
pkgver=10.1
pkgrel=1
pkgdesc="A high level library of subroutines and functions that display data graphically. It is intended to be a powerfull and easy to use, support C, ch, python, perl, java, fortran, lua (3rd party)"
url="http://www.mps.mpg.de/dislin/"
arch=('x86_64')
license=('GPL')
depends=('openmotif')
makedepends=()
conflicts=()
replaces=()
backup=()
install=install.$pkgname
source=(ftp://ftp.gwdg.de/pub/grafik/dislin/linux/i586_64/dislin-10.1.linux.i586_64.tar.gz)
md5sums=('af370213776be1ddcb922ee103ea49b5')

build() {
  mkdir -p $pkgdir/usr/lib/dislin/man
  cd $srcdir/dislin-10.1/
  export DISLIN=$pkgdir/usr/lib/dislin
  sh ./INSTALL 
 }

package() {
install=install.$pkgname
}
