# Maintainer: Mitsu <archlinux AT suumitsu DOT eu>

pkgname=hubicfuse
_gitname=hubicfuse
pkgver=20140325
pkgrel=2
pkgdesc="A fuse filesystem to access HubiC cloud storage"
arch=('i686' 'x86_64')
url='https://github.com/TurboGit/hubicfuse'
license=('MIT')
depends=('fuse')
makedepends=('git' 'gcc' 'libxml2')
source=("git+https://github.com/TurboGit/hubicfuse.git")

sha256sums=('SKIP')

pkgver() {
	cd "$_gitname"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/$_gitname"
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$_gitname"
	make DESTDIR="$pkgdir" install
}
# vim:set ts=2 sw=2 et:

