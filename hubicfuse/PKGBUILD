# Maintainer: Mitsu <archlinux AT suumitsu DOT eu>

pkgname=hubicfuse
pkgver=1.3.0
pkgrel=1
pkgdesc="A fuse filesystem to access HubiC cloud storage"
arch=('i686' 'x86_64')
conflicts=("hubicfuse-git")
provides=("hubicfuse")
url='https://github.com/TurboGit/hubicfuse'
license=('MIT')
depends=('fuse' 'libxml2' 'json-c')
makedepends=('gcc' 'libxml2' 'pkg-config' 'make')
source=("$url/archive/v$pkgver.tar.gz")
sha512sums=('c8b57bbb2f3a38b290f0124e13ae71c9c7b4b8b882bb91ab29e01553d586484bba9050213e47bbaad5add17fe0e333c78d99d0ce0f081c860fb23f8e76a93fc3')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make -j $(nproc)
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
# vim:set ts=2 sw=2 et:

