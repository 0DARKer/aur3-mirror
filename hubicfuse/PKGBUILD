# Maintainer: Mitsu <archlinux AT suumitsu DOT eu>

pkgname=hubicfuse
pkgver=1.2.0
pkgrel=1
pkgdesc="A fuse filesystem to access HubiC cloud storage"
arch=('i686' 'x86_64')
conflicts=("hubicfuse-git")
provides=("hubicfuse")
url='https://github.com/TurboGit/hubicfuse'
license=('MIT')
depends=('fuse' 'libxml2' 'json-c')
makedepends=('gcc' 'libxml2' 'pkg-config' 'make')
source=("$url/archive/v$pkgver.tar.gz")
sha512sums=('67bfb207aba1782a5542b7c321fd177614eca4800d80a4a878bda2c2b9c18258724ec3e05a19d74c9e78684d0fa53c9839df9035f3efad699a25e19916cb93f0')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr
	make -j $(nproc)
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
# vim:set ts=2 sw=2 et:

