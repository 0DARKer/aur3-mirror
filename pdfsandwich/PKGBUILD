# Maintainer: Max Roder <maxroder@web.de>

pkgname='pdfsandwich'
pkgver='0.0.3'
pkgrel='4'
pkgdesc="Wrapper for cuneiform OCR and hocr2pdf to generate pdf files with the recognized text put behind the image (sandwich pdfs)."
url="http://sourceforge.net/projects/pdfsandwich/"
arch=('x86_64' 'i686')
license=('GPL')
depends=('cuneiform' 'exactimage-svn' 'imagemagick' 'ghostscript')
makedepends=('ocaml')
source=("http://sourceforge.net/projects/kismettoolsuite/files/pdfsandwich/v${pkgver}/${pkgname}-v${pkgver}.tar.bz2"
		"pdfsandwich.patch")
sha256sums=('fefb50f00513d8097168a739ef0d31c1b17dc53dce2c6360cb46ba96a11e507a'
            '31753bb788da0583ecd665ad6f3e73c37455de727fb6bc67c31f19105c50faa4')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure

	# Patch for better results (using tiff instead of bmp, see http://pdfsandwich.origo.ethz.ch/issues/1)
	#patch -i ../pdfsandwich.patch
	make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" PREFIX="/usr" install
}

