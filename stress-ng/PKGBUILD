pkgname=stress-ng
pkgver=1
pkgrel=1
pkgdesc="stress test"
arch=(i686 x86_64)
url="http://kernel.ubuntu.com/~cking/stress-ng/"
license=('GPL')
depends=()
makedepends=('git')
source=("git://kernel.ubuntu.com/cking/stress-ng.git")
md5sums=('SKIP')

build() {
	cd "$srcdir/$pkgname"
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir/" install
}
