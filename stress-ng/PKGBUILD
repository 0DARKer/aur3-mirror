# Mantainer: Mattia Bertoni <mattia DOT b89 AT gmail DOT com>

pkgname=stress-ng
pkgver=0.02.26
pkgrel=2
pkgdesc="stress-ng will stress test a computer system in various selectable ways."
arch=(i686 x86_64)
url="http://kernel.ubuntu.com/~cking/${pkgname}/"
license=('GPL')
depends=()
makedepends=('git')
source=("http://kernel.ubuntu.com/~cking/tarballs/${pkgname}/${pkgname}-${pkgver}.tar.gz"
         vfork.patch)
md5sums=('3d801f3ebd84d33d29655636b11efcbe'
         'b2cfc5bea319f56a1be1f9586ba2d4d1')

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	patch -Np1 -i "${srcdir}/vfork.patch"
	make clean
	make
	make DESTDIR="${pkgdir}/" install
}
