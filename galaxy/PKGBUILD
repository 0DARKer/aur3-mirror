# Contributor: stefan husmann <stefan-husmann@t-online.de>
pkgname=galaxy  
pkgver=1.8
pkgrel=7
pkgdesc="Stellar Simulation"
url="http://kornelix.squarespace.com/galaxy"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('eca6faa8db1afbfe435202ff3611e53d')

build() {
  cd $srcdir/$pkgname-$pkgver
  sed -i 's#/local##' Makefile 
  make PREFIX=/usr CFLAGS="-c $(pkg-config --cflags gtk+-2.0)" \
    LFLAGS="`pkg-config --libs gtk+-2.0 gthread-2.0`"
  sed -i 's#/local##' data/desktop 
}
package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 data/desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop 
  make DESTDIR=$pkgdir install
}
