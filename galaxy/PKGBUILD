# Contributor: stefan husmann <stefan-husmann@t-online.de>
pkgname=galaxy  
pkgver=2.0
pkgrel=1
pkgdesc="Stellar Simulation"
url="http://kornelix.squarespace.com/galaxy"
arch=('i686' 'x86_64')
license=('GPL3')
depends=('gtk2')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('b99915c55c8016f14435ab401505acb4')

build() {
  cd $srcdir/$pkgname-$pkgver
  install -d $pkgdir/usr/share/applications
  export PREFIX=/usr
  sed -i 's+xdg-deskto+#xdg-deskto+' Makefile
  make
}
package() {
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop $pkgdir/usr/share/applications/$pkgname.desktop 
  make DESTDIR=$pkgdir install  
  rm $pkgdir/usr/share/applications/kornelix-$pkgname.desktop
  rm $pkgdir/usr/share/doc/$pkgname/$pkgname.man
}
