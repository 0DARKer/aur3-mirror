pkgname=python2-ipcalc
pkgver=1.1.2
pkgrel=1
pkgdesc='IP subnet calculator for Python'
arch=('any')
url='https://github.com/tehmaze/ipcalc'
license=('BSD')
depends=('python2')
source=("http://pypi.python.org/packages/source/i/ipcalc/ipcalc-1.1.2.tar.gz")
md5sums=('4260f286bf243bbe22b212006e694966')

package() {
  cd ${srcdir}/${pkgname/python2-/}-${pkgver}
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}
