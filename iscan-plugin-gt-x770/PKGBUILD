# Contributor: Ian Heafer <archlinux at studio oneword turnip dot net>
pkgname=iscan-plugin-gt-x770
pkgver=2.1.1_2
pkgrel=1
pkgdesc="iscan plugin for Epson Colorio GT-X770/Perfection Photo V500 scanners."
arch=('i686')
url="http://www.avasys.jp/english/linux_e/"
license=('custom')
depends=('iscan')
makedepends=('rpmextract')
install=gt-x770.install
source=(http://linux.avasys.jp/drivers/scanner-plugins/GT-X770/$pkgname-${pkgver//_/-}.c2.i386.rpm)
md5sums=('b31551fe905414c2235f8871f9c1100e')
build() {
  cd "$startdir"
  rpmextract.sh "$pkgname-${pkgver//_/-}.c2.i386.rpm"
  mv usr "$pkgdir"
  mkdir $pkgdir/usr/share/licences
  mv $pkgdir/usr/share/doc/iscan-plugin-gt-x770-2.1.1 $pkgdir/usr/share/licences/
  rmdir $pkgdir/usr/share/doc
}


