# Maintainer: crazyelf5

pkgname=feedler-bzr
pkgver=latest
pkgrel=1
pkgdesc="RSS Reader from Elementary Project."
arch=('i686' 'x86_64')
url="https://launchpad.net/feedler"
license=('GPLv3')
depends=('libwebkit3' 'gtk3' 'sqlheavy-git' 'libsoup'
	 'libxml2' 'libnotify' 'granite-bzr')
makedepends=('bzr' 'vala' 'cmake')
install=${pkgname}.install

_bzrtrunk=lp:${pkgname%-*}
_bzrmod=${pkgname%-*}

build() {
  cd "${srcdir}"

  msg "Connecting to the server...."

  if [ ! -d ${_bzrmod} ]; then
    bzr co ${_bzrtrunk} ${_bzrmod}
  else
    bzr up ${_bzrmod}
  fi

  msg "BZR checkout done or server timeout"
  msg "Starting make..."

  rm -rf ${_bzrmod}-build
  cp -r ${_bzrmod} ${_bzrmod}-build
  cd ${_bzrmod}-build
  
  sed -i 's|sqlheavy-0.1|sqlheavy-0.2|' CMakeLists.txt
   
  mkdir build; cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}"/${_bzrmod}-build/build
  make DESTDIR="${pkgdir}" install
}
