pkgname=xhtml11-doc
pkgver=20070216
pkgrel=1
pkgdesc="XHTML 1.1 Documentation"
arch=('i686' 'x86_64')
url="http://www.w3.org/TR/xhtml11"
license=('W3C')
depends=("xhtml-modularization-docs")
options=('docs')
source=("http://www.w3.org/TR/2007/WD-xhtml11-20070216/xhtml11.tgz")
md5sums=('919abed7ec7d2c0ce432b5d69ed685f6')

build(){
  cd "$srcdir/xhtml11-20070216"
  sed -i 's%http://www.w3.org/TR/xhtml-modularization/%../xhtml-modularization/%g' *.html
  mkdir -p "$pkgdir/usr/share/doc/xhtml11"
  cp -rf * "$pkgdir/usr/share/doc/xhtml11" || return 1
}
