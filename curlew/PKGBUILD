
pkgname=curlew
name=Curlew
pkgver=0.1.11
rel=5
pkgrel=1
pkgdesc='Easy to use, Free and Open-Source Multimedia converter for Linux in Python'
arch=(any)
license=(GPL)
url=("https://opendesktop.org/content/show.php/Curlew?content=155664")
depends=('python>=2.7' 'ffmpeg>=0.8' 'ffmpeg-compat' 'python2-gobject' 'hicolor-icon-theme' 'mencoder' 'gobject-introspection' 'xdg-utils' 'python-xdg')
optdepends=('curl: Aurploader support')
conflicts=()
source=(http://opendesktop.org/CONTENT/content-files/155664-$pkgname-${pkgver}.tar.gz)
md5sums=("6747be62aeb49c72003b81b38ae2aaca")
install="$pkgname.install"

package()
{
  cd "$srcdir/$pkgname"
  python2 setup.py install --root="$pkgdir"/ --optimize=1
  #install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
  #install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}

