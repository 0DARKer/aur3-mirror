
pkgname=curlew
name=Curlew
pkgver=0.19
rel=4
pkgrel=2
pkgdesc='Easy to use, Free and Open-Source Multimedia converter for Linux in Python'
arch=(any)
license=(GPL)
url=("https://opendesktop.org/content/show.php/Curlew?content=155664")
depends=('python>=2.7' 'ffmpeg>=0.8' 'ffmpeg-compat' 'hicolor-icon-theme' 'mencoder' 'gobject-introspection' 'xdg-utils' 'python-xdg')
optdepends=('curl: Aurploader support')
conflicts=()
source=(http://opendesktop.org/CONTENT/content-files/155664-$pkgname-${pkgver}r$rel.tar.gz)
md5sums=(5789e3c56671507e12291df7068bf53d)
install="$pkgname.install"

package()
{
  cd "$srcdir/$name"
  python2 setup.py install --root="$pkgdir"/ --optimize=1
  #install -D -m755 "aurquery" "$pkgdir/usr/bin/aurquery"
  #install -D -m755 "aurploader" "$pkgdir/usr/bin/aurploader"
}

