depends=('perl>=5.8.1')
makedepends=()
url='http://search.cpan.org/dist/Pod-Cpandoc'
source=('http://search.cpan.org/CPAN/authors/id/S/SA/SARTAK/Pod-Cpandoc-0.12.tar.gz')
