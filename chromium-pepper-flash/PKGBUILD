# Maintainer: Ner0

pkgname=chromium-pepper-flash
pkgver=11.7.700.141
_pkgver=27.0.1448.0-189523
pkgrel=1
pkgdesc="Google Chrome's Pepper Flash plugin for Chromium"
arch=('i686' 'x86_64')
url="http://www.google.com/chrome"
license=('custom:chrome')
#depends=('chromium')
optdepends=('pulseaudio-alsa: For PulseAudio users')
conflicts=('chromium-pepper-flash-stable')
install=pepper.install

if [[ "$CARCH" == 'i686' ]]; then
   _arch='i386'
   md5sums=('65f81f9d6ac9872fcb9d8e71503505b9')
elif [[ "$CARCH" == 'x86_64' ]]; then
   _arch='x86_64'
   md5sums=('8eb31b244af158b2300a82c4bb4c1337')
fi
md5sums[1]='3abf4a038d0525c6d17e5bfefbcfee91'

source=("http://dl.google.com/linux/chrome/rpm/stable/$_arch/google-chrome-unstable-$_pkgver.$_arch.rpm"
	"LICENSE.txt")

package() {
  install -dm755 "$pkgdir/usr/lib/PepperFlash"
  install -m644 opt/google/chrome/PepperFlash/* "$pkgdir/usr/lib/PepperFlash"
  install -Dm644 "$srcdir/LICENSE.txt" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  sed -i "s/flashver=.*/flashver=$pkgver/" "$startdir/pepper.install"
}
