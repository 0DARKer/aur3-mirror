# Maintainer: drm00 <jasmintee at gmx dot de>

pkgname=cdk
pkgver=1.4.6
pkgrel=1
pkgdesc="A Java library for structural chemo- and bioinformatics."
arch=('any')
url="http://sourceforge.net/apps/mediawiki/cdk/index.php?title=Main_Page"
license=('LGPL2.1')
depends=('java-runtime')
makedepends=('java-environment' 'apache-ant')
source=("http://downloads.sourceforge.net/project/cdk/cdk/${pkgver}/cdk-src%2Blibs-${pkgver}.tar.gz")
md5sums=('8c6ede267f7a0c4251456a6a7591210f')

build() {
  cd cdk-src+libs-${pkgver}

  /usr/share/java/apache-ant/bin/ant
}

package() {
  install -d ${pkgver}/usr/share/java/cdk
  install -m644 cdk-src+libs-${pkgver}/dist/jar/* \
    ${pkgver}/usr/share/java/cdk
}
