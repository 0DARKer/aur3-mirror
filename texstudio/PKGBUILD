# Maintainer: Cl√©ment DEMOULINS <clement@archivel.fr>

pkgname=texstudio
pkgver=2.3
pkgrel=2
pkgdesc="Fork of the LaTeX IDE TexMaker. Gives you an environment where you can easily create and manage LaTeX documents."
arch=('i686' 'x86_64')
url="http://texstudio.sourceforge.net/"
license=('GPL')
depends=('poppler-qt')
replaces=('texmakerx')
install=$pkgname.install

source=(http://downloads.sourceforge.net/project/texstudio/texstudio/TeXstudio%20${pkgver}/${pkgname}-${pkgver}.tar.gz)
md5sums=('bd5c7f0f4ae498addf387e7058d5d919')

build() {
    cd "$srcdir/$pkgname$pkgver"
    qmake texstudio.pro
    make clean
    make
}

package() {
    cd "$srcdir/$pkgname$pkgver"
    make INSTALL_ROOT="$pkgdir" install
}
