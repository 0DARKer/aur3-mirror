#-------------# =========> SKIP TEST <==========
  skiptest=0  # If your system going crazy - you
#-------------# can turn off the test here.
#
pkgname='perl-string-urandom'
_pkgname='String-Urandom'
pkgver='0.13'
pkgrel='1'
pkgdesc="An alternative to using /dev/random"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-params-validate')
url='http://search.cpan.org/dist/String-Urandom/'
source=(http://search.cpan.org/CPAN/authors/id/M/MB/MBROOKS/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('9f2684493f099132d18a71761ed85ff2c919d44c4322f5e80e99daaac3d84d25')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}" || return 1
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  [ "$skiptest" = "1" ] || make test || return 1
  make DESTDIR="${pkgdir}" install || return 1
  find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}
