pkgname='perl-string-urandom'
_pkgname='String-Urandom'
pkgver='0.16'
pkgrel='1'
pkgdesc="An alternative to using /dev/random"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl' 'perl-params-validate')
url='http://search.cpan.org/dist/String-Urandom/'
source=(http://search.cpan.org/CPAN/authors/id/M/MB/MBROOKS/${_pkgname}-${pkgver}.tar.gz)
sha256sums=('c1dc53e8483a77f3b5fa0c41ad843699420d46411ffb0b30bc4c70dd863b5139')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor
  make
}
check() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make test
}
package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
