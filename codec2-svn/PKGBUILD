pkgname=codec2-svn
pkgver=193
pkgrel=1
pkgdesc="Open source 2400 bit/s speech codec"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://codec2.org/"
depends=('glibc')
makedepends=('subversion')
source=()
md5sums=()
_svntrunk=https://freetel.svn.sourceforge.net/svnroot/freetel/codec2 
_svnmod=codec2

build() {
  cd $srcdir/
  msg "Updating codec SVN..."
  svn co $_svntrunk -r $pkgver $svnmod
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  cd ${_svnmod}/src
  make 
  install -m755 -D c2enc $pkgdir/usr/bin/c2enc || return 1
  install -m755 -D c2dec $pkgdir/usr/bin/c2dec || return 1
  install -m755 -D c2sim $pkgdir/usr/bin/c2sim || return 1
  install -m644 -D $srcdir/${_svnmod}/COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING || return 1
  }
