# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=libtiff4
pkgver=3.9.4
_relver=5ubuntu3
pkgrel=2
pkgdesc="A package that installs libtiff.so.4 suitable for use with Dwarf Fortress d13 and other programs that require it."
arch=('i686' 'x86_64')
url="http://bbs.archlinux.org/viewtopic.php?id=45393"
license=('unknown')
groups=()
depends=()
# makedepends=(deb2targz)
md5sums=('046db2bb4d14a11490096a94067a0758')

case "$CARCH" in
    i686|i[3-5]86) _arch='i386';;
    x86_64|amd64) _arch='amd64'; md5sums=('507440e7067f944ebf682004eeff306e');;
    *) error "Unknown or invalid CARCH=$CARCH"; exit 1
esac

source=(http://security.ubuntu.com/ubuntu/pool/main/t/tiff/libtiff4_${pkgver}-${_relver}_${_arch}.deb)

build() {
  # deb2targz libtiff4_${pkgver}-${_relver}_${_arch}.deb
  ar x libtiff4_${pkgver}-${_relver}_${_arch}.deb
  # tar -xvvf libtiff4_${pkgver}-${_relver}_${_arch}.tar.gz
  tar xvf data.tar.gz
  cp -R usr $pkgdir/usr ||return 1

}

