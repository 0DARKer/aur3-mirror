# Contributor: Trizen <trizenx at gmail dot com>

pkgname=libtiff4
pkgver=3.9.4
pkgrel=5
pkgdesc="A package that installs libtiff.so.4 suitable for use with Dwarf Fortress d13 and other programs that require it."
arch=('i686' 'x86_64')
url="http://bbs.archlinux.org/viewtopic.php?id=45393"
license=('unknown')
groups=()
depends=()
makedepends=(deb2targz)
md5sums=('b5bb38a17dc11e74b4474adc6b88d746')

case "$CARCH" in
    i686|i[3-5]86) _arch='i386';;
    x86_64|amd64) _arch='amd64'; md5sums='a1b1b6618f2cf17eb4aa20864d6484e1';;
    *) error "Unknown or invalid CARCH=$CARCH"; exit 1
esac

source=(http://security.ubuntu.com/ubuntu/pool/main/t/tiff/libtiff4_${pkgver}-${pkgrel}_${_arch}.deb)

build() {
  deb2targz libtiff4_${pkgver}-${pkgrel}_${_arch}.deb
  tar -xvvf libtiff4_${pkgver}-${pkgrel}_${_arch}.tar.gz
  cp -R usr $pkgdir/usr ||return 1

}

