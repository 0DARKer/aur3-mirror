# Maintainer: Trizen <echo dHJpemVueEBnbWFpbC5jb20K | base64 -d>

pkgname=libtiff4
pkgver=3.9.4
relver=5
pkgrel=1
pkgdesc="A package that installs libtiff.so.4 suitable for use with Dwarf Fortress d13 and other programs that require it."
arch=('i686' 'x86_64')
url="http://bbs.archlinux.org/viewtopic.php?id=45393"
license=('unknown')
groups=()
depends=()
makedepends=(deb2targz)
md5sums=('573f557435ce7bd5454b0392e20ce6e7')

case "$CARCH" in
    i686|i[3-5]86) _arch='i386';;
    x86_64|amd64) _arch='amd64'; md5sums=('631fb4c36285cf6943a0ea062c0084c7');;
    *) error "Unknown or invalid CARCH=$CARCH"; exit 1
esac

source=(http://security.ubuntu.com/ubuntu/pool/main/t/tiff/libtiff4_${pkgver}-${relver}ubuntu1_${_arch}.deb)

build() {
  deb2targz libtiff4_${pkgver}-${relver}ubuntu1_${_arch}.deb
  tar -xvvf libtiff4_${pkgver}-${relver}ubuntu1_${_arch}.tar.gz
  cp -R usr $pkgdir/usr ||return 1

}

