# Contributor: Florian Richter <mail@f1ori.de>
pkgname='perl-mime-base32'
pkgver='1.01'
pkgrel='1'
pkgdesc="Encode/decode Base 32"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/MIME-Base32'
source=('http://search.cpan.org/CPAN/authors/id/D/DA/DANPEDER/MIME-Base32-1.01.tar.gz')
md5sums=('2e0a1df2a73dcee749c225774cac52e7')

build() {
  DIST_DIR="${srcdir}/MIME-Base32-1.01"
  export PERL_MM_USE_DEFAULT=1
  { cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}
