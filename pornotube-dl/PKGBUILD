pkgname=pornotube-dl
pkgver=2008.06.03
pkgrel=1
pkgdesc="A small command-line program to download videos from PornoTube.com"
arch=('i686' 'x86_64')
url="http://www.arrakis.es/~rggi3/pornotube-dl"
license=('MIT')
depends=('python')
makedepends=('awk')
source=(http://www.arrakis.es/~rggi3/pornotube-dl/pornotube-dl)
md5sums=('0ab81618edde94887b0bde863aa8c493')

build()  {
    mkdir -p $startdir/pkg/usr/share/licenses/pornotube-dl
    awk /Copy/,/import/ pornotube-dl  | grep -v import \
        | sed -re 's/#?//'  > $startdir/pkg/usr/share/licenses/pornotube-dl/COPYING

    install -D -m755 $startdir/src/pornotube-dl $startdir/pkg/usr/bin/pornotube-dl
}
