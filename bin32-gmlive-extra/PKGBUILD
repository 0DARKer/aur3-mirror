pkgname=bin32-gmlive-extra
_realname=gmlive-extra
pkgver=0.3
pkgrel=4
pkgdesc="Addons for gmlive, provides sopcast, pplive & ppstream support."
arch=('x86_64')
url="http://code.google.com/p/gmlive/"
license=('Custom')
depends=('gmlive' 'lib32-libstdc++5')
makedepends=('pkgconfig' 'intltool')
provides=('bin32-sopcast' 'lib32-libpps=0.1.286' 'libpps=0.1.286')
source=(http://gmlive.googlecode.com/files/$_realname-$pkgver.tar.gz
http://ubuntu:ubuntuftp@ftp.ubuntu.org.cn/home/redoak/xpps.gz)
md5sums=('e94313ff9170e7375b75b518a7aae5cf' '266cbf02e0e16ba449a5bfd8859bc516')

build()
{

cd ${srcdir}/gmlive-extra-${pkgver}

install -d ${pkgdir}/usr/bin
install -d ${pkgdir}/opt/lib32/usr/lib/

install -Dm755 ../xpps ${pkgdir}/usr/bin/
#install -Dm755 sp-sc-auth ${pkgdir}/usr/bin/
install -Dm755 xpplive ${pkgdir}/usr/bin/

tar xvvzf lib-826.tar.gz
cp -ar lib/* ${pkgdir}/opt/lib32/usr/lib/

}