# Maintainer: Tim Diels <tim@timdiels.be>
pkgname=python2-dropbox
pkgver=1.5.1
pkgrel=1
pkgdesc="Dropbox python2 client api"
url='https://www.dropbox.com/developers/core/sdk'
arch=('any')
license=('MIT')
depends=('python2')
makedepends=('python2-distribute')
source=(https://pypi.python.org/packages/source/d/dropbox/dropbox-${pkgver}.tar.gz)
md5sums=('c8e3758cae735b0d20b5173060193802')

build() {
  cd ${srcdir}/dropbox-${pkgver}
  python2 setup.py install --root=${pkgdir} -O1
  sed -i -e "s|#![ ]*/usr/bin/python$|#!/usr/bin/python2|" \
         -e "s|#![ ]*/usr/bin/env python$|#!/usr/bin/env python2|" \
    $(find $pkgdir -name '*.py')
}
