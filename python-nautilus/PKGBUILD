# Maintaner: Giorgio Gilestro <giorgio@gilestro.tk>
pkgname=python-nautilus
pkgver=0.7.0
pkgrel=4
pkgdesc="Python binding for Nautilus components"
arch=('i686' 'x86_64')
url="http://projects.gnome.org/nautilus-python/"
license="GPL"
makedepends=('pkgconfig' 'gnome-python' )
depends=('nautilus' 'pygtk')
optdepends=('python2-gconf: required for open-terminal and background-image examples')
options=('!libtool' '!emptydirs')
source=(http://ftp.gnome.org/pub/GNOME/sources/nautilus-python/0.7/nautilus-python-$pkgver.tar.bz2 nautilus-python.patch)
sha256sums=('6353f21cbbc7bfa6c6a7d088c2e05b25445d58a468afa1290d8d3d6c5437dd21' 
	    'f067493f0f98ba94cbf1ba023a3a19b404db5b1adcdbf65026103fcad9423ecd')

build() {
  export PYTHON=python2
  cd "$srcdir/nautilus-python-$pkgver"
  patch -p0 src/nautilus-python.c < ../../nautilus-python.patch || return 1

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
