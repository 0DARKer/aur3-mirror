pkgname=coccinelle
pkgver=0.2.5rc1
_pkgver=0.2.5-rc1
pkgrel=1
pkgdesc="Provides spatch program used to apply semantic patches"
arch=('i686' 'x86_64')
url="http://coccinelle.lip6.fr"
license=('GPLv2')
makedepends=('ocaml')
depends=('ocaml-findlib')
source=(http://coccinelle.lip6.fr/distrib/${pkgname}-${_pkgver}.tgz)
sha256sums=('b7fb8f49413230846083ddc9a286aa715b68e53c7d97d2ad01e87de029af861e')

build() {
   cd "$srcdir/$pkgname-$_pkgver"

   ./configure --prefix=/usr 
   sed -i 's/shell python /shell python2 /' pycaml/Makefile
   make depend 
   make 
   make DESTDIR=$pkgdir install 
}

