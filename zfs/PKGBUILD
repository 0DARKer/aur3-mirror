# Maintainer: phlowx <phlowx[at]googlemail.com>

pkgname=zfs
pkgver=0.6.0rc4
_dlver=0.6.0-rc4
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Native ZFS for Linux"
url="http://github.com/behlendorf/zfs"
depends=('solaris-pl=0.6.0rc4-1')
makedepends=('kernel26-headers')
source=(https://github.com/downloads/behlendorf/zfs/zfs-$_dlver.tar.gz)
md5sums=('6b1e7c05af79fd93bf48b69997ecb4f3')
license=('CDDL')
install=zfs.install
build() {
  cd $srcdir/zfs-$_dlver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
