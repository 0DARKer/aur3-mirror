# Maintainer: phlowx <phlowx[at]googlemail.com>

pkgname=zfs
pkgver=0.6.0rc6
_dlver=0.6.0-rc6
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Native ZFS for Linux"
url="http://github.com/zfsonlinux/zfs"
depends=('solaris-pl=0.6.0rc6-1')
makedepends=('linux-headers')
source=(https://github.com/downloads/zfsonlinux/zfs/zfs-$_dlver.tar.gz)
md5sums=('48b1d10e77742493d769e04664bca9b0')
license=('CDDL')
install=zfs.install
build() {
  cd $srcdir/zfs-$_dlver
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/zfs
  make || return 1
  make DESTDIR=$pkgdir install
}
