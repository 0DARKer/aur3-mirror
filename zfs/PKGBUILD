# Maintainer: phlowx <phlowx[at]googlemail.com>

pkgname=zfs
pkgver=0.5.2
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Native ZFS for Linux"
url="http://github.com/behlendorf/zfs"
depends=('solaris-pl=0.5.2-1')
makedepends=('kernel26-headers')
source=(https://github.com/downloads/behlendorf/zfs/zfs-$pkgver.tar.gz)
md5sums=('a07a89e20389e8ebe3e0d2498a87bed3')
license=('CDDL')
install=zfs.install
build() {
  cd $srcdir/zfs-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install
}
