# Maintainer: Michael Schubert <mschu.dev at google mail>
pkgname=copperhead-hg
pkgver=2
pkgrel=1
pkgdesc="Copperhead uses a small functional, data-parallel subset of Python for NVidia GPU programming (CUDA)"
arch=(i686 x86_64)
url="http://code.google.com/p/copperhead/"
license=('Apache 2.0')
depends=(cuda pycuda codepy thrust)
makedepends=(mercurial pytools)
optdepends=(boost python-matplotlib python-scipy plac)
provides=()
md5sums=()

_hgrepo=copperhead
_hgroot=https://copperhead.googlecode.com/hg/

build() {
  cd $srcdir/$_hgrepo
  python2 setup.py install --prefix=/usr --root=$pkgdir
}
