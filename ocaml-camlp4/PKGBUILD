pkgname=ocaml-camlp4
pkgver=4.02.0
pkgrel=0

pkgdesc='A system for writing extensible parsers for programming languages.'
url='https://github.com/ocaml/camlp4'
arch=('i686' 'x86_64')
license=('GPL')

depends=('ocaml')
makedepends=('ocaml')

source=('https://github.com/ocaml/camlp4/archive/4.02.0+rc1-no-findlib.tar.gz')

md5sums=('SKIP')

build() {
    cd camlp4-4.02.0-rc1-no-findlib
    ./configure
    make
}

package() {
    cd camlp4-4.02.0-rc1-no-findlib
    make BINDIR="$pkgdir"/usr/bin LIBDIR="$pkgdir"/usr/lib install
}
