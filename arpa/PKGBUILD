# Submitter: Gently <toddrpartridge@gmail.com>

pkgname=arpa
pkgver=0.81
pkgrel=1
pkgdesc="(ar)ch (pa)ckages - a generic package tasks script for Arch Linux"
arch=("any")
url="https://github.com/Gen2ly/arpa"
license=("GPL2")
depends=("trizen" "sudo")
changelog=
source=("git://github.com/Gen2ly/arpa")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir"/$pkgname
  git describe | sed 's/^v//;s/-.*//'
}

package() {
  cd "$srcdir/$pkgname"
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 LICENSE  "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  #install -d              "$pkgdir/usr/share/man/man1/"
  #pod2man --section=1 --center="$pkgname manual" --name="$pkgname" \
  #  --release="1.1" README.pod | \
  #   gzip > "$pkgdir/usr/share/man/man1/$pkgname.1.gz"
}

# vim:set ts=2 sw=2 et:
