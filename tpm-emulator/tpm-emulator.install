post_install() {
  groupadd -r tpm
  useradd -r -g tpm -m -d /var/run/tpm -s /bin/false tpm
  chmod 0750 /var/run/tpm

  udevadm trigger --sysname-match="tpm[0-9]*"
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  systemctl stop tpmd
  rm -rf /var/run/tpm
  userdel tpm
}

op=$1
shift
$op $*
