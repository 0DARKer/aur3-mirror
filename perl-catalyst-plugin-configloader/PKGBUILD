pkgname='perl-catalyst-plugin-configloader'
pkgver='0.28'
pkgrel='1'
pkgdesc="Load config files of various types"
arch=('any')
url='http://search.cpan.org/dist/Catalyst-Plugin-ConfigLoader'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-catalyst-runtime>=5.7008' 'perl-config-any>=0.08' 'perl-data-visitor>=0.24' 'perl-mro-compat>=0.09')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/B/BR/BRICAS/Catalyst-Plugin-ConfigLoader-0.28.tar.gz')
md5sums=('4ae51e86697428a1c48f7ddaa836a923')

build() {
  DIST_DIR="${srcdir}/Catalyst-Plugin-ConfigLoader-0.28"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

