post_install() {
  update-desktop-database -q
cat << _EOF
You can use firefox (extra) and firefox32 at the same time.
=> For more information see http://aur.archlinux.org/packages.php?ID=18644
_EOF
}

post_upgrade() {
  update-desktop-database -q
}

post_remove() {
  update-desktop-database -q
}

op=$1
shift

$op $*

