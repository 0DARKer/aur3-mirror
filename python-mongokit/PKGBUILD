pkgname=python-mongokit
pkgver=0.5.10
pkgrel=1
pkgdesc="MongoKit framework try to keep its simplicity when you manage mongodb in python."
license=("BSD")
url="http://bitbucket.org/namlook/mongokit/"
depends=('python2' 'python-pymongo')
arch=('i686' 'x86_64')
source=(http://bitbucket.org/namlook/mongokit/get/3234bc0d81a1.bz2)
md5sums=(9a34ee300f42ba02aece4e03db81fb49)

build() {
    cd ${startdir}/src/mongokit
    python setup.py install --root=${startdir}/pkg
}
