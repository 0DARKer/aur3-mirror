#pkgbase=linux               # Build stock -ARCH kernel
pkgbase=linux-chromebook       # Build kernel with a different name
_srcname=linux-3.15
pkgver=3.15.5
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=("https://www.kernel.org/pub/linux/kernel/v3.x/${_srcname}.tar.xz"
        "https://www.kernel.org/pub/linux/kernel/v3.x/patch-${pkgver}.xz"
        "2-4-i2c-designware-Disable-device-on-system-suspend.patch"
        "3-4-i2c-designware-Add-runtime-PM-hooks.patch"
        "4-4-i2c-designware-pci-Add-Haswell-PCI-IDs.patch"
        "PATCHv2-1-4-platform-chrome-chromeos_laptop---Add-support-for-Acer-C720.patch"
        "PATCHv2-2-4-platform-chrome-chromeos_laptop---Add-HP-Chromebook-14.patch"
        "PATCHv2-3-4-platform-chrome-chromeos_laptop---Add-Dell-Chromebook-11-touch.patch"
        "PATCHv2-4-4-platform-chrome-chromeos_laptop---Add-Toshiba-CB35-Touch.patch"
        "backlight-fix.patch"
        # the main kernel config files
        'config' 'config.x86_64'
        # standard config files for mkinitcpio ramdisk
        'linux.preset'
        'change-default-console-loglevel.patch'
        )
sha256sums=('c3927e87be4040fa8aca1b58663dc0776aaf00485604ff88a623be2f3fb07794'
            '9b0d000e0bdec7a25ee6303afdab8d2af77439995876eadd6ce248e5c954037d'
