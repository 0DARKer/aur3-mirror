# Maintainer: Daniel Wallace (gtmanfred) <daniel.wallace at gatech dot edu>
pkgname=zurl
pkgver=2.0.2
pkgrel=1
pkgdesc="zsh url launcher, originally written to be used with URxvt keyboard-selet launcher. Does some Image sites. Currently developing"
arch=('i686' 'x86_64')
url="http://code.gtmanfred.com"
license=('unknown')
install=$pkgname.install
depends=('curl')
source=($pkgname.zsh
        "$pkgname"rc)

package() {
  cd "$srcdir"
  install -Dm755 "$pkgname.zsh" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "${source[1]}" "$pkgdir/usr/bin/${source[1]}"
}

# vim:set ts=2 sw=2 et:
md5sums=('aecc61828ea5a5105f0c347ebfa50df3'
         '0923ca14eaf0f2395c70eab841a2d03f')
