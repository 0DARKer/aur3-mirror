pkgname=picpuz
pkgver=2.4
pkgrel=1
pkgdesc="Picpuz is a free Linux 'jigsaw puzzle' program."
arch=('i686' 'x86_64')
url="http://kornelix.squarespace.com/picpuz/"
license=('GPL3')
depends=('gtk2>=2.0')
makedepends=('pkgconfig')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('bbb23042cfaf23008c1890f2c23fec88')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  sed -i 's+xdg-deskto+#xdg-deskto+' Makefile
  make PREFIX=/usr 
}
package() { 
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
  cp $pkgdir/usr/share/applications/kornelix-$pkgname.desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop 
  rm $pkgdir/usr/share/applications/kornelix-$pkgname.desktop 
}
