pkgname=picpuz
pkgver=2.1.3
pkgrel=1
pkgdesc="Picpuz is a free Linux 'jigsaw puzzle' program."
arch=('i686' 'x86_64')
url="http://kornelix.squarespace.com/picpuz/"
license=('GPL3')
depends=('gtk2>=2.0')
makedepends=('pkgconfig')
source=(http://kornelix.squarespace.com/storage/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('c1091639055dd981577a981d8d2166cb')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  sed -i 's#/local##' Makefile || return 1
  sed -i 's#)es#)/locales#' Makefile || return 1
  make PREFIX=/usr CFLAGS+="-c $(pkg-config --cflags gtk+-2.0)" \
    LFLAGS+="`pkg-config --libs gtk+-2.0 gthread-2.0`" || return 1
  sed -i 's#/local##' desktop || return 1
  sed -i 's+# ++' desktop || return 1
}
package() { 
  cd $srcdir/$pkgname-$pkgver
  install -Dm644 desktop \
    $pkgdir/usr/share/applications/$pkgname.desktop || return 1
  make DESTDIR=$pkgdir install || return 1
}
