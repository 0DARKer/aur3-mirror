post_install() {
	echo	""
	echo	"running depmod..."
	depmod
	echo	"adding modules..."
	modprobe ddbridge
	modprobe ngene
	modprobe drxk
}

post_upgrade() {
	echo	""
	echo	"running depmod..."
	depmod
}

post_remove() {
	echo	""
	echo	"removing modules..."
	modprobe -r ddbridge
	modprobe -r ngene
	modprobe -r drxk	
	echo	"running depmod..."
	depmod
}
