# Submitter:   Wessel Dirksen "p-we" <wdirksen at gmail dot com>

pkgname=digital-devices-dvb-drivers
pkgver=hg
pkgrel=1
pkgdesc="Digital Devices proprietary DVB drivers + firmware"
url="http://www.digitaldevices.de"
arch=('i686' 'x86_64')
license=('GPLv2')
makedepends=('linux-headers' 'mercurial' 'patchutils' 'perl-proc-processtable' 'wget' 'perl')
conflicts=('ffdecsawrapper' 'digital-devices-dvb-drivers')
provides=('digital-devices-dvb-drivers')
install='digital-devices-dvb-drivers.install'

source=(hg+http://linuxtv.org/hg/~endriss/media_build_experimental \
	hg+http://linuxtv.org/hg/~endriss/ngene-octopus-test \
	digital-devices-dvb-drivers.install)

sha256sums=('SKIP'
            'SKIP'
            '3c48aed279c83841fc083bb954e027826bd3c2aa72d9d5e3cf01a74cb6b4fd17')

pkgver() {

	cd "$srcdir/media_build_experimental"
	_ddver=`printf "0.r%s.%s" "$(hg identify -n)"`
	_kernel=`uname -r | sed -r 's/-/_/g'`
	echo $_ddver$_kernel
}

prepare() {

	cd "$srcdir/media_build_experimental"
	make download
	make untar
	make

	cd "$srcdir/ngene-octopus-test/linux/Documentation/dvb/"
	perl get_dvb_firmware ngene
	perl get_dvb_firmware drxk	
}

package() {

	mkdir -p $pkgdir/usr/lib/modules/`uname -r`/updates/digital-devices
	mkdir -p $pkgdir/usr/lib/firmware/updates/digital-devices
	find "$srcdir/media_build_experimental" -name '*.ko' -exec cp {} $pkgdir/usr/lib/modules/`uname -r`/updates/digital-devices \;
	find "$srcdir/ngene-octopus-test" -name '*.fw' -exec cp {} $pkgdir/usr/lib/firmware/updates/digital-devices \;
	find "$srcdir/ngene-octopus-test" -name '*.mc' -exec cp {} $pkgdir/usr/lib/firmware/updates/digital-devices \;

	echo ""
	msg  "Compressing modules, this will take awhile..."
	echo ""
	find "$pkgdir" -name '*.ko' -exec gzip -9 {} \;

	chmod 644 -R $pkgdir/usr/lib/modules/`uname -r`/updates
	chmod 644 -R $pkgdir/usr/lib/firmware/updates
}
