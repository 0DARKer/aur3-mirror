# Contributor: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=xmountains
pkgver=2.9
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Fractal Generator for the xwindow system, intergrates with xscreensaver"
url="http://www.epcc.ed.ac.uk/~spb/xmountains/"
license=('custom')
depends=('libx11' )
makedepends=('imake' 'xbitmaps')
source=(http://www.epcc.ed.ac.uk/~spb/xmountains/xmountains_$pkgver.tar.gz)
md5sums=('d5e697708bf59cf7d4892666b5b85c35')
build() {
  cd ${srcdir}
  xmkmf
  make
}
package() {
  cd ${srcdir}
  install -D -m755 xmountains ${pkgdir}/usr/bin/xmountains
  install -D -m644 xmountains.man \
    ${pkgdir}/usr/share/man/man1/xmountains.1
  install -D -m644 copyright.h \
    ${pkgdir}/usr/share/licenses/xmountains/copyright.h
}
