# Contributor: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=xmountains
pkgver=2.8
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="Fractal Generator for the xwindow system, intergrates with xscreensaver"
url="http://www.epcc.ed.ac.uk/~spb/xmountains/"
license=('custom')
depends=('libx11' )
makedepends=('imake')
source=(http://www.epcc.ed.ac.uk/~spb/xmountains/xmountains_$pkgver.tar.gz)
md5sums=('e5d55515315227f7849f62e449601fb8')
build() {
  cd $startdir/src/
xmkmf
make || return 1
install -D -m755 xmountains $startdir/pkg/usr/bin/xmountains
install -D -m644 xmountains.man $startdir/pkg/usr/man/man1/xmountains.man.1
install -D -m644 copyright.h $startdir/pkg/usr/share/licenses/xmountains/copyright.h
}
