# Maintainer: nosada <nosada271@gmail.com>

pkgname=python-cabocha
_pkgname=cabocha
pkgver=0.68
pkgrel=2
pkgdesc="Yet Another Japanese Dependency Structure Analyzer (python interface)"
url="https://code.google.com/p/cabocha/"
arch=('x86_64' 'i686')
license=('LGPL2.1' 'BSD')
depends=('crfpp' 'mecab' 'cabocha' 'python')
source=("https://cabocha.googlecode.com/files/${_pkgname}-${pkgver}.tar.bz2"
        "setup.patch")
sha1sums=('5e22a71eb86d778fdeb1b725c0b27f1fb4af7f4b'
          'f6095944cb6c53a05619543265c53c7d90655b9c')

build() {
  cd ${srcdir}/${_pkgname}-${pkgver}/python

  patch < ${srcdir}/setup.patch
  python setup.py build || return 1
}

package() {
  cd ${srcdir}/${_pkgname}-${pkgver}/python

  python setup.py install --root=${pkgdir} || return 1
  install -Dm644 ../COPYING \
            ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

# vim:set ts=2 sw=2 et:
