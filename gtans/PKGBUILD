# [Victor]
# Server = http://personales.ya.com/vmromanos/arch/pkgs
pkgname=gtans
pkgver=1.2
pkgrel=2
pkgdesc="The Tangram chinese puzzle game"
depends=('gtk')
url="http://gtans.sourceforge.net/"
license=("GPL")
arch=('i686')
source=(http://dl.sourceforge.net/sourceforge/gtans/$pkgname-$pkgver.tar.gz \
	gtans.diff)
md5sums=('067d8bd1d5534b39316bdb4e689a6c40' \
	'a7e8abd3e8a4252bdd28b2542e150068')

build() {
  cd $startdir/src/$pkgname-$pkgver
  patch -p1 < ../gtans.diff
  make || return 1
  make DESTDIR=$startdir/pkg install
}
