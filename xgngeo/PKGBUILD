# Contributor: Janitux <janitux <at> gmail.com>

pkgname=xgngeo
pkgver=16
pkgrel=3
pkgdesc="A frontend for Gngeo in GTK"
license="GPL"
arch=('i686' 'x86_64')
url="http://www.choplair.org/?en/XGngeo"
depends=('pygtk' 'gngeo')
makedepends=('python2')
source=(http://download.berlios.de/$pkgname/XGngeo-$pkgver.tar.bz2)
md5sums=('741d8099b6560b1f82518dbff90bd08b')

build() {
  cd ${srcdir}/XGngeo-$pkgver

  # Use python2, instead of python3
  sed -i -e 's#env python$#env python2#' setup.py
  sed -i -e 's#env python$#env python2#' data/py/__init__.py
  sed -i -e 's#env python$#env python2#' data/script/xgngeo_startup.py  
  ./setup.py install --prefix=${pkgdir}/usr
}
