pkgname=xgngeo
pkgver=16
pkgrel=2
pkgdesc="Xgngeo is a Gui for Gngeo"
url="http://www.choplair.org/?en/XGngeo"
license="GPL"
makedepends=('python')
depends=('pygtk' 'gngeo>=0.6.12')
source=(http://download.berlios.de/$pkgname/XGngeo-$pkgver.tar.bz2)

build() {
cd $startdir/src/XGngeo-$pkgver

python setup.py install --prefix=$startdir/pkg/usr --root=/usr
#install -d $startdir/pkg/usr/bin/
#install -m 755 $startdir/src/XGngeo-$pkgver/data/script/xgngeo_startup.py $startdir/pkg/usr/bin/xgngeo
#install -d $startdir/pkg/usr/share/applications/
#install -m 755 $startdir/src/xgngeo.desktop $startdir/pkg/usr/share/applications/
}

md5sums=('741d8099b6560b1f82518dbff90bd08b')
