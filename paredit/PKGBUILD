# Contributor: Joachim Fasting <joachim.fasting@gmail.com>
pkgname=paredit
pkgver=21
pkgrel=3
pkgdesc="Emacs minor mode for pseudo-structurally editing Lisp code"
arch=('any')
url="http://www.emacswiki.org/emacs/ParEdit"
license=('BSD')
depends=('emacs')
install=paredit.install
source=(http://mumble.net/~campbell/emacs/$pkgname-$pkgver.el)
md5sums=('6e9955ce89afd72098c14d39eefd38c1')
sha1sums=('b994c30278878562f37844a5260c23cdcf848a5a')

build() {
    cd $srcdir
    emacs -q -no-site-file -batch -f batch-byte-compile paredit-$pkgver.el \
      || return 1
    install -D -m644 paredit-$pkgver.elc \
      $pkgdir/usr/share/emacs/site-lisp/paredit.elc || return 1
    install -D -m644 paredit-$pkgver.el \
      $pkgdir/usr/share/emacs/site-lisp/paredit.el || return 1
    install -D -m644 $startdir/LICENSE \
      $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
