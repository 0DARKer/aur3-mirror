pkgname=naturaldocs
pkgver=1.4
pkgrel=1
pkgdesc="Documentation generator with a natural syntax"
arch=('i686' 'x86_64')
url="http://www.naturaldocs.org/"
license=('GPL')
depends=('perl')
makedepends=('unzip')
source=(http://ufpr.dl.sourceforge.net/sourceforge/naturaldocs/NaturalDocs-${pkgver}.zip)
md5sums=('05a9a2a392bd3d6d44d1576e624ba74a')

installdir="${pkgdir}/usr/share/perl5/naturaldocs"
bindir="${pkgdir}/usr/bin"
docdir="${pkgdir}/usr/share/doc/naturaldocs"
build()
{
	cd ${srcdir}
	mkdir -p ${installdir}
	cp -fr Config Info JavaScript Modules Styles NaturalDocs ${installdir}
	mkdir -p ${docdir}
	cp -fr Help/* ${docdir}

	mkdir -p ${bindir}
	echo -e '#!/bin/sh\nexec /usr/bin/perl /usr/share/perl5/naturaldocs/NaturalDocs $@' > ${bindir}/naturaldocs
	chmod +x ${bindir}/naturaldocs
	ln -sf naturaldocs ${bindir}/NaturalDocs
}
