pkgname='perl-app-cpanoutdated'
pkgver='0.11'
pkgrel='1'
pkgdesc=""
arch=('any')
url='http://search.cpan.org/dist/App-cpanoutdated'
license=('PerlArtistic' 'GPL')
depends=('perl' 'perl-libwww' 'perl-local-lib')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/T/TO/TOKUHIROM/App-cpanoutdated-0.11.tar.gz')
md5sums=('da166af91b58760c3e2f946056736942')

build() {
  DIST_DIR="${srcdir}/App-cpanoutdated-0.11"
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
    PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
    MODULEBUILDRC=/dev/null
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete

}

