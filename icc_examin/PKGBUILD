pkgname=icc_examin
pkgver=0.47
pkgrel=1
pkgdesc="ICC Examin is a colour management utility."
url="http://oyranos.org/"
arch=('i686' 'x86_64')   
makedepends=()
depends=(ftgl oyranos fltk openicc)
optdepends=(argyllcms)
source=("http://prdownloads.sourceforge.net/oyranos/$pkgname-$pkgver.tar.gz")
md5sums=('cd451499601310d5e8aeb2c20847a12a')
license=('MIT')

build() {
    cd $srcdir/$pkgname-$pkgver
    ./configure --prefix=/usr --enable-threads --enable-xft --enable-shared || return 1
    make || return 1
    make DESTDIR=$pkgdir install

}
