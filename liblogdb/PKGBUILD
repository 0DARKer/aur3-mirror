pkgname=liblogdb
pkgver=3.0.0
pkgrel=1
pkgdesc="A C library providing a basic logging function into a mysql database"
arch=('i686' 'x86_64')
url="http://www.wolf-software.net/Libraries/logdb/"
license=('GPL3')
depends=('libmysqlclient')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('1b4d6cc9713b15f6dd5f0b2965ed40ec')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
