pkgname=liblogdb
pkgver=3.0.1
pkgrel=1.2
pkgdesc="A C library providing a basic logging function into a mysql database"
arch=('i686' 'x86_64')
url="http://www.wolf-software.com/Libraries/logdb/"
license=('GPL3')
depends=('libmysqlclient')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('c21e347f468df556220dcba1c9925464')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make CFLAGS="$CFLAGS -D_GNU_SOURCE -Wall -Wstrict-prototypes -Wshadow -Wpointer-arith -Wcast-qual -Wcast-align -Wnested-externs -Wunused -Wwrite-strings -Wmissing-noreturn -Wmissing-declarations -Wmissing-prototypes -Wbad-function-cast" || return 1
  make DESTDIR="$pkgdir" install
}
