pkgname=liblogdb
pkgver=3.0.1
pkgrel=1.3
pkgdesc="A C library providing a basic logging function into a mysql database"
arch=('i686' 'x86_64')
url="http://www.wolf-software.com/Libraries/logdb/"
license=('GPL3')
depends=('libmysqlclient')
options=('!libtool')
source=($url/$pkgname-latest.tbz2)
md5sums=('c21e347f468df556220dcba1c9925464')

build() {
  cd $pkgname-$pkgver

  sed 's|-Werror||g' -i configure

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir" install
}
