pkgname=mate-mime-data
pkgver=2011.12.16
pkgrel=1
pkgdesc="The base MIME and Application database for MATE"
arch=('any')
license=('GPL')
depends=('shared-mime-info')
makedepends=('intltool')
url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')
source=(http://matsusoft.com.ar/projects/mate/files/${pkgname}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('148f9908858dff3cdd867a688bd43193538144eb1f4ccf9ae16d98311e4d7e1f')


build() {
    cd "${srcdir}"
    ./autogen.sh --prefix=/usr --sysconfdir=/etc --localstatedir=/var || return 1
    make || return 1
}

package() {
    cd "${srcdir}"
    make DESTDIR="${pkgdir}" install

    install -m755 -d "${pkgdir}/usr/lib"
    mv "${pkgdir}/usr/share/pkgconfig" "${pkgdir}/usr/lib/"
}
