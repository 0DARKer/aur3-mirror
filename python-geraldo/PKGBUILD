pkgname=python-geraldo
pkgver=0.4.12
pkgrel=1
pkgdesc="Reports engine for Python and Django applications"
arch=('any')
url="http://www.geraldoreports.org/"
license=('LGPL')
changelog=ChangeLog
depends=('python-imaging' 'python-reportlab')
makedepends=('python2-distribute')
source=(http://pypi.python.org/packages/source/G/Geraldo/Geraldo-$pkgver-stable.tar.gz)
md5sums=('26e164f4cd3bd28468139f15420fa053')

build() {
    cd $srcdir/Geraldo-$pkgver-stable

    python2 setup.py build
}

package(){
    cd $srcdir/Geraldo-$pkgver-stable
    
    python2 setup.py install --root=$pkgdir --optimize=1
}

