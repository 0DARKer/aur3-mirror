# Maintainer: talavis <aur talavis eu>
pkgname=ugene
pkgver=1.10.1
pkgrel=1
pkgdesc="A free cross-platform genome analysis suite."
arch=('i686' 'x86_64')
url="http://ugene.unipro.ru/"
license=('GPL')
depends=('qt' 'mesa')
source=(${url}downloads/$pkgname-$pkgver.tar.gz)
sha1sums=('bba2f7488d2b6fc0001df3a79aa87e6c4c49c24f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  [ "$CARCH" = "i686" ] && qmake PREFIX=/usr -r
  [ "$CARCH" = "x86_64" ] && qmake CONFIG+=x64 PREFIX=/usr -r
  make || return 1
  make INSTALL_ROOT="$pkgdir" install || return 1
}
