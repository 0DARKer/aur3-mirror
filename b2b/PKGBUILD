# Maintainer: Jake Forsberg <iorbit.earth gmail com>
pkgname=b2b
pkgver=0.1
pkgrel=1
pkgdesc="Perform simple base number conversions on the command line"
url="https://github.com/iorbitearth/b2b"
arch=('any')
depends=('bc')
source="https://github.com/iorbitearth/b2b/archive/v${pkgver}.tar.gz"
md5sums=('e62fb5afb64f660b1b3959b69a2c7fca')

package() {
    mkdir -p "$pkgdir/usr/local/bin"
    cd "${srcdir}/b2b-${pkgver}"
    make DESTDIR="$pkgdir/usr/local/bin" install
}

