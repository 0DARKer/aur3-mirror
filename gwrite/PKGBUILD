pkgname=gwrite
pkgver=0.5.0
pkgrel=3
pkgdesc='simple GTK+ HTML5 rich text editor'
arch=('any')
url='http://code.google.com/p/gwrite/'
license=('LGPL')
depends=('python2' 'python-jswebkit' 'pywebkitgtk')
makedepends=('python-distutils-extra')
source=("http://gwrite.googlecode.com/files/${pkgname}-${pkgver}.tar.gz")
md5sums=('5eef147ede4cfc61d17c1b04f2210308')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  python2 setup.py install --root=${pkgdir} || return 1
}
