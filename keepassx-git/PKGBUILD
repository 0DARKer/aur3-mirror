# Maintainer: Jamie Macdonald <jamie.alban@gmail.com>

pkgname=keepassx-git
pkgrel=1
_pkgname=keepassx
pkgver=20140315
pkgdesc="A cross platform port of the windows application “Keepass Password Safe”"
arch=('i686' 'x86_64')
url="https://github.com/keepassx/keepassx"
license=('GPL3')
depends=('libxtst' 'qt4' 'shared-mime-info')
makedepends=('git' 'cmake')
source=("$pkgname::git://github.com/keepassx/keepassx.git")
md5sums=('SKIP')

prepare() {
  cd $pkgname 
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  mkdir build
  cd build
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr
  make
}

pkgver() {
  cd "$srcdir/$_gitname"
  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir/" install
}

