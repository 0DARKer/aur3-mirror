# Contributor: maoserr

pkgname=redshiftgui-bin
pkgver=0.2.1
pkgrel=2
pkgdesc='Monitor color adjustment tool'
arch=('x86_64' 'i686')
url='http://github.com/maoserr/redshiftgui'
license=('GPL2')
depends=('gtk2' 'curl' 'libxcb' 'libxrandr' 'libxxf86vm' 'libsm')
replaces=('redshiftgui')
if [[ $CARCH = x86_64 ]]; then
  source=("http://github.com/downloads/maoserr/redshiftgui/RedshiftGUI-$pkgver-Linux-x86_64.tar.gz")
  sha256sums=('e831bb3b6bf5c3df165da4250fa73f815f260a77d13c90141eb3a96528a57aa9')
else
  source=("http://github.com/downloads/maoserr/redshiftgui/RedshiftGUI-$pkgver-Linux-i686.tar.gz")
  sha256sums=('bad5e9e490b436e120ad56bdc38d060d49f50fd9bbda27912ec33ca8e0d31f40')
fi

package() {
  cd "RedshiftGUI-${pkgver}-Linux-${CARCH}"
  mkdir -p "$pkgdir/usr/"{bin,share}
  install -m755 bin/redshiftgui "$pkgdir/usr/bin/redshiftgui"
  mv share/* "$pkgdir/usr/share/"
}

