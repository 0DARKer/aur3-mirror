# Contributor: Gordon JC Pearce <gordon@gjcp.net>
pkgname=soundmodem
pkgver=0.15
pkgrel=2
pkgdesc="Multiplatform Soundcard Packet Radio Modem"
arch=('i686' 'x86_64')
url="http://www.baycom.org/~tom/ham/soundmodem/"
md5sums=('5d808e3b97d9779aae7663006aa4add8')
license=('GPL2')
makedepends=('make' 'libxml2' 'alsa-lib' 'gtk2' 'audiofile' )
source=(http://www.baycom.org/~tom/ham/soundmodem/${pkgname}-${pkgver}.tar.gz)

build() {
  cd $srcdir/${pkgname}-${pkgver}
  ./configure --prefix=/usr || return 1
  make clean
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
}

