pkgname=openasb-client
pkgver=0.8.0a
pkgrel=1
pkgdesc="Software to manage LAN-House and Cyber ​​Café (Client)."
arch=('any')
url="http://www.openasb.com/"
license=('GPL v2')
depends=('gambas3-runtime' 'gambas3-gb-image' 'gambas3-gb-qt4' 'gambas3-gb-form' 'gambas3-gb-crypt'  'gambas3-gb-desktop' 'gambas3-gb-form-dialog' 'gambas3-gb-settings' 'gambas3-gb-net' 'gambas3-gb-qt4-ext' 'gambas3-gb-sdl-sound' 'gambas3-gb-form-mdi')
md5sums=('a7d3a5310503a9c6f2619c14de01921a') 
source=(http://www.openasb.com/testes/openasb-client_0.7.8-0ubuntu1_all.deb)


package() {

    cd ${srcdir}/
    tar Jxvf  data.tar.xz -C .
    
    install -d $pkgdir/{usr/bin,usr/share}
    cp -a $srcdir/usr/bin/* $pkgdir/usr/bin/
    
    install -Dm655 $srcdir/usr/share/pixmaps/openasb-client.png $pkgdir/usr/share/pixmaps/openasb-client.png
    install -Dm655 $srcdir/usr/share/applications/openasb-client.desktop $pkgdir/usr/share/applications/openasb-client.desktop

   
} 

    
    



