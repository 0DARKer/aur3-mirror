# Maintainer: TuxSpirit<tuxspirit@archlinux.fr> 2007/12/06 22:39:00 UTC
# Contributor: Gaetan Legay <lenglemetz@archlinux.fr>
pkgname=quad
pkgver=1.12
pkgrel=1
pkgdesc="QUAD is a high-performance file compressor that utilizes an advanced LZ-based compression algorithm"
arch=(i686 x86_64)
license=('LGPL')
url="http://quad.sourceforge.net"
if [ "$CARCH" = "i686" ]; then
    depends=()
    source=(http://downloads.sourceforge.net/sourceforge/$pkgname/${pkgname}-${pkgver}-linux_i486.tar.gz)
    md5sums=('ec8302170d6011d6905c2f558fedbf5f')
elif [ "$CARCH" = "x86_64" ]; then
    depends=()
    source=(http://downloads.sourceforge.net/sourceforge/$pkgname/${pkgname}-${pkgver}-linux_amd64.tar.gz)
    md5sums=('bc3811bd3e7bba48450f4e59b80b77ee')
fi

options=(!emptydirs)

build() {
  #Program
  install -D -m 755 ${startdir}/src/quad ${startdir}/pkg/usr/bin/quad

  #License
  install -D -m 644 ${startdir}/src/COPYING ${startdir}/pkg/usr/share/licenses/${pkgname}/COPYING

  #Documentations
  install -D -m 644 ${startdir}/src/README ${startdir}/pkg/usr/share/doc/${pkgname}/README

}
