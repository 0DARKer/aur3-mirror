# Maintainer: BlackICE <blackice@craft.net.br>

pkgname=gvim-checkpath
pkgdesc='Gvim wrapper for autodetect permissions/root, based on geany-checkpath'
url='http://lara.craft.net.br/'

pkgver=1.1
pkgrel=1
arch=(any)

license=('GPL')

depends=('sudo' 'gvim')

source=('http://lara.craft.net.br/gvim-checkpath.sh')
md5sums=('00800b48b853cad37d8d7d9755b8bce0')

package() {
	install -Dm755 "$srcdir"/gvim-checkpath.sh "$pkgdir"/usr/bin/gvim_checkpath
}
