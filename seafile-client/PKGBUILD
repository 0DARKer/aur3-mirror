# Maintainer: localizator <localizator@ukr.net>

pkgname=seafile-client
pkgver=1.4.1
pkgrel=1
pkgdesc="Seafile is an online file storage and collaboration tool. This is seafile client for synchronizing your local files with seafile server."
url="http://seafile.com"
license=(GPL)
groups=('network')
depends=(
'util-linux'
'openssl'
'glib2'
'sqlite'
'libevent'
'gtk2'
'libappindicator1'
'libnotify'
'python2-webpy'
'python-mako'
'python2-simplejson')
options=(!strip !zipman)
_realname=seafile

arch=('i686' 'x86_64')
if [ "$CARCH" = 'i686' ]; then
   source=("${_realname}_${pkgver}_i386.deb::http://seafile.googlecode.com/files/${_realname}_${pkgver}_i386.deb")
   sha256sums=('15ba35654c56284f89fc80edfb8b43b94500d9d3ce85fa9dbcc736e0966e8a58')
elif [ "$CARCH" = "x86_64" ]; then
   source=("${_realname}_${pkgver}_amd64.deb::http://seafile.googlecode.com/files/${_realname}_${pkgver}_amd64.deb")
   sha256sums=('2bc35704acef35070c0fe660b47100adada71bcafa51d7fcabb20303ae0f6d14')
fi

package() {
	     cd $srcdir
         tar xvf data.tar.gz
         cp -rp usr $pkgdir
}