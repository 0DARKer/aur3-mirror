# Contributor: localizator <localizator@ukr.net>

# Maintainer: Moritz Maxeiner <moritz@ucworks.org>

pkgname=seafile-client
pkgver=1.4.1
_seafilever=1.4.5
pkgrel=3
pkgdesc="Seafile is an online file storage and collaboration tool. This is seafile client for synchronizing your local files with seafile server."
arch=('i686' 'x86_64')
url="https://github.com/haiwen/seafile/"
license=('GPL')
depends=('ccnet' 'python-mako' 'python2-simplejson' 'python2-webpy' 'gtk2' 'libnotify' 'hicolor-icon-theme' 'libevent')
makedepends=()
optdepends=()
options=('!libtool' '!emptydirs')
install=seafile-client.install
source=("http://seafile.googlecode.com/files/seafile-latest.tar.gz")
md5sums=('2e22e72c4983c0a8a2d4b950f266c788')
sha256sums=('d298ea339a8ddc3cec0d8513032b15b1c53ee27bb4afc69f147bca57258fe9fb')

build ()
{
	cd "$srcdir/seafile-$_seafilever"
	./configure --disable-server --disable-httpserver --enable-client --prefix=/usr PYTHON=/usr/bin/python2
	make
}

package ()
{
	cd "$srcdir/seafile-$_seafilever"
	make DESTDIR="$pkgdir/" install

	install -D -m644 $srcdir/seafile-$_seafilever/LICENCE.txt $pkgdir/usr/share/licenses/$pkgname/LICENCE.txt
}
