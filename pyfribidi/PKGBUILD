# Contributor: Jack <nim901@gmail.com>
pkgname=pyfribidi
pkgver=0.6.0
pkgrel=1
pkgdesc="PyFribidi is a simple fribidi binding to python."
depends=('fribidi' 'python')
url="http://pyfribidi.sourceforge.net/"
source=(http://dl.sourceforge.net/sourceforge/pyfribidi/$pkgname-$pkgver.tar.gz)
md5sums=(57766e3bd05a2044397e98b4f90125c2)

build() {
cd $startdir/src/$pkgname-$pkgver
./configure --prefix=/usr
make
make DESTDIR=$startdir/pkg install
}
