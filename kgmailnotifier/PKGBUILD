# Maintainer: vicky91 <vickypaiers@gmail.com>

pkgname=kgmailnotifier
pkgver=0.5.1
pkgrel=6
pkgdesc="A gmail notifier systray applet for KDE."
arch=('i686' 'x86_64')
url="http://opendesktop.org/content/show.php/KGmailNotifier?content=55375"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4' 'patch')
install=${pkgname}.install
source=(http://kde-apps.org/CONTENT/content-files/55375-$pkgname-$pkgver.tar.bz2
        kgmailfixes.patch)
md5sums=('fc66cb7aed575cd6f21d2e29d31c9687'
         'cef39222e7cf7766d491505fb96877b6')

build() {
  cd $srcdir/$pkgname-$pkgver
  patch -p1 -i "${srcdir}/kgmailfixes.patch"
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
  make || return 1
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install || return 1
}


