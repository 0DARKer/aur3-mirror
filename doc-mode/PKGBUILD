# $Id$
# Contributor: Peter Simons <simons@cryp.to>

pkgname=doc-mode
pkgver=1.1
pkgrel=1
pkgdesc="Asciidoc mode for Emacs"
arch=('i686' 'x86_64')
license=('GPL')
url="http://xpt.sourceforge.net/tools/doc-mode/"
source=("http://downloads.sourceforge.net/xpt/$pkgname-$pkgver.tgz")
md5sums=('202408ca62e0bc5d3e12d4053cc45352')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm444 doc-mode.el "$pkgdir/usr/share/emacs/site-lisp/doc-mode.el"
  install -Dm444 doc-mode.htm "$pkgdir/usr/share/doc/$pkgname-$pkgver/doc-mode.htm"
  install -m444 *png "$pkgdir/usr/share/doc/$pkgname-$pkgver/"
}
