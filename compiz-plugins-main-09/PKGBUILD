
# Put the desired install prefix HERE
_iprefix=/opt/compiz-09

pkgname=compiz-plugins-main-09
pkgver=0.9.2.1
pkgrel=1
pkgdesc="Plugins for compiz 0.9"
url="http://www.compiz.org/"
license=('GPL' 'LGPL' 'MIT')
arch=('i686' 'x86_64')
depends=('compiz-core-09')
makedepends=('intltool' 'cmake')
options=(!libtool !emptydirs)
source=("http://releases.compiz.org/$pkgver/compiz-plugins-main-${pkgver}.tar.gz")
sha1sums=('6de8de5396bc48f72a72b412563d5c3f96ac0f2f')

# This is a developement version
OPTIONS=(!strip)

build()
{
	cd "compiz-plugins-main-${pkgver}"
	[[ -d build ]] || mkdir build
	cd build
	env PKG_CONFIG_PATH="${_iprefix}/lib/pkgconfig:$PKG_CONFIG_PATH" \
		cmake .. -DCOMPIZ_PLUGIN_INSTALL_TYPE="compiz" -DCMAKE_INSTALL_PREFIX="${_iprefix}" -DCMAKE_BUILD_TYPE=Debug
	make
	make DESTDIR="${pkgdir}" install
}
