# Maintainer: Harv Chen <ch05042210[at]gmail[dot]com>
pkgname=gnome-shell-theme-frieze
pkgver=1.1
pkgrel=2
pkgdesc="Gnome Shell + GDM Theme"
url="http://nuxio.deviantart.com/art/Frieze-Gnome-Shell-270456342"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('gnome-shell' 'gnome-shell-extension-user-theme')
optdepends=('gnome-tweak-tool')
source=("http://www.deviantart.com/download/270456342/frieze_gnome_shell_by_nuxio-d4h0tg6.zip")
md5sums=('486130fb4a39e01b3eed4e7d1b746027')

build() {
    mkdir -p "${pkgdir}/usr/share/themes/frieze"
    version=`gnome-shell --version | grep -oE "[0-9.]+"`
    cp -R "${srcdir}/Frieze-${version:0:3}/gnome-shell" "${pkgdir}/usr/share/themes/frieze"
}
