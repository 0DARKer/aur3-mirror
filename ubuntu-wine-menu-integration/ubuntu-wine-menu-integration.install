update_cache() {
	xdg-icon-resource forceupdate --theme hicolor 2> /dev/null
}

post_install() {
	update_cache
}

pre_upgrade() {
	if [ -d "/etc/xdg/menus/kde-applications-merged/" ]; then 
		if [ -L "/etc/xdg/menus/kde-applications-merged/" ]; then
			"rm /etc/xdg/menus/kde-applications-merged"
		fi
	fi
}

post_upgrade() {
	update_cache
}

post_remove() {
	update_cache
}
