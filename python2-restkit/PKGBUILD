# Maintainer: Baptiste Jonglez <zerstorer@free.fr>
pkgname=python2-restkit
pkgver=3.2.1
pkgrel=1
_suffix=e0de6cd
_tarname="benoitc-restkit-$pkgver-0-g${_suffix}.tar.gz"
_dirname="benoitc-restkit-${_suffix}"
pkgdesc="Restkit is an HTTP resource kit for Python. It allows you to easily access to HTTP resource and build objects around it."
arch=('any')
url="http://benoitc.github.com/restkit/index.html"
license=('MIT')
depends=('python2')
makedepends=('python2-distribute')
provides=()
conflicts=('python-restkit' 'restkit-git')
options=(!emptydirs)
source=("https://download.github.com/${_tarname}")
md5sums=('0467e67793ed651a9b7ca16b4e865ae0')

package() {
  cd "$srcdir/${_dirname}"
  python2 setup.py install --prefix=/usr --root=$pkgdir/ --optimize=1
}

