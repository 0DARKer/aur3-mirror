# Maintainer: 3ED <krzysztof1987 at gmail>

pkgname=seamonkey-i18n-pl
pkgver=2.1
pkgrel=1
pkgdesc="Polish language pack for SeaMonkey"
arch=('any')
license=('MPL')
url="http://www.seamonkey-project.org/"
depends=("seamonkey>=${pkgver}")
source=(http://releases.mozilla.org/pub/mozilla.org/seamonkey/releases/${pkgver}/langpack/seamonkey-${pkgver}.pl.langpack.xpi)
noextract=(seamonkey-${pkgver}.pl.langpack.xpi)
sha256sums=('c4652efd647a13a880bac27f22afe74c2c127ca419f1a2d567dab17c70fbc051')

package() {

  cd "${srcdir}"

  install -Dm644 "seamonkey-${pkgver}.pl.langpack.xpi" \
    "${pkgdir}/usr/lib/seamonkey-2.1/extensions/langpack-pl@seamonkey.mozilla.org.xpi"
}
