# Maintainer: 3ED <krzysztof1987 at gmail>

pkgname=seamonkey-i18n-pl
pkgver=2.0.14
pkgrel=1
pkgdesc="Polish language pack for SeaMonkey"
arch=('any')
license=('MPL')
url="http://www.seamonkey-project.org/"
depends=("seamonkey>=${pkgver}")
source=(http://releases.mozilla.org/pub/mozilla.org/seamonkey/releases/${pkgver}/langpack/seamonkey-${pkgver}.pl.langpack.xpi)
sha256sums=('6bc9e2814a814613ad50611a39e33d776c2d1babe58e96a8b55d82ea7f5d9ca8')

_dir="/usr/lib/seamonkey-2.0/chrome/"

package() {

  cd "${srcdir}"

  sed 's|chrome/pl.jar|pl.jar|g' -i chrome.manifest

  install -Dm644 "chrome.manifest" "${pkgdir}/$_dir/pl_PL.manifest"
  install -Dm644 "chrome/pl.jar"   "${pkgdir}/$_dir/pl.jar"
}
