pkgname=libpri
pkgver=1.4.11.4
pkgrel=1
pkgdesc="Primary Rate ISDN (PRI) library for T1/E1/J1 interfaces"
url="http://www.asterisk.org/"
arch=('i686' 'x86_64')
license=('GPL2')
source=("http://downloads.digium.com/pub/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('db12da6a9365231e15669ee0f2f34cc9')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
  make INSTALL_PREFIX="$pkgdir" DESTDIR="$pkgdir" LDCONFIG=/bin/true install
}

