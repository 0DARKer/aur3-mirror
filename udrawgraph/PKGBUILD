# Contributor: Markus Gross (xsdnyd [at] gmail.com)

pkgname=udrawgraph
pkgver=3.1.1
pkgrel=1
pkgdesc="The powerful solution for graph visualization"
url="http://www.informatik.uni-bremen.de/uDrawGraph/"
arch=(i686)
license=CUSTOM
depends=('glibc')
provides=('udrawgraph')
source=($url/download/uDrawGraph-$pkgver-0-linux-i386.tar.gz
udrawgraph.sh)
md5sums=(7594da0391d2e5a2aa4b073b10938e9a
dfc85d85e2d0103198f378e5f39a3cc8)


build() {
  cd $startdir/src/uDrawGraph-3.1

  #just copy all files, it is already binary
  mkdir -p $startdir/pkg/usr/share/$pkgname/
  cp -r * $startdir/pkg/usr/share/$pkgname/

  #install license
  mkdir -p $startdir/pkg/usr/share/licenses/$pkgname
  cp LICENSE.txt $startdir/pkg/usr/share/licenses/$pkgname/LICENSE

  #install sh file to register UDG_HOME variable
  mkdir -p $startdir/pkg/etc/profile.d/
  cp $startdir/udrawgraph.sh $startdir/pkg/etc/profile.d/
}
# vim:syntax=sh
