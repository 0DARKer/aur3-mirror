# Maintainer: haru <uobikiemukot at gmail dot com>
pkgname=yaft
pkgver=0.1.7
pkgrel=1
pkgdesc="yet another framebuffer terminal"
arch=('i686' 'x86_64')
url="http://www.nak.ics.keio.ac.jp/~haru/yaft"
license=('MIT')
makedepends=('ncurses')
source=($url/release/$pkgname-$pkgver.tar.gz)

build() {
  cd $srcdir/$pkgname-$pkgver

  make
}

package() {
  cd $srcdir/$pkgname-$pkgver

  mkdir -p $pkgdir/usr/share/terminfo
  tic -o $pkgdir/usr/share/terminfo yaft.src

  install -Dm755 {./,$pkgdir/usr/bin/}yaft
  install -Dm755 {./,$pkgdir/usr/bin/}yaft_wall
  install -Dm644 {./,$pkgdir/usr/share/$pkgname/fonts/}milkjf-iso8859.yaft
  install -Dm644 {./,$pkgdir/usr/share/$pkgname/fonts/}milkjf-jis0201.yaft
  install -Dm644 {./,$pkgdir/usr/share/$pkgname/fonts/}milkjf-jis0208.yaft
  install -Dm644 {./,$pkgdir/usr/share/$pkgname/fonts/}ambiguous-half.yaft
  install -Dm644 {./,$pkgdir/usr/share/$pkgname/alias/}ambiguous-half.alias
  install -Dm644 {./,$pkgdir/usr/share/$pkgname/alias/}ambiguous-wide.alias
}
md5sums=('2e72d6807d14f572630bd43589f2be9e')
md5sums=('c66f17375ce0392cb4baf72574abcfbb')
md5sums=('2f53c597f0caa14f25266b22bbea472c')
