# Maintainer: haru <uobikiemukot at gmail dot com>
pkgname=yaft
pkgver=0.2.7
pkgrel=3
pkgdesc="yet another framebuffer terminal"
arch=('i686' 'x86_64')
url="http://uobikiemukot.github.com/yaft"
license=('MIT')
makedepends=('ncurses')
source=($url/release/$pkgname-$pkgver.tar.gz)

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
md5sums=('f4c78e4c7702ec2512d129cc26f9807d')
