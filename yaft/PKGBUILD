# Maintainer: haru <uobikiemukot at gmail dot com>
pkgname=yaft
pkgver=0.2.0
pkgrel=5
pkgdesc="yet another framebuffer terminal"
arch=('i686' 'x86_64')
url="http://uobikiemukot.github.com/yaft"
license=('MIT')
makedepends=('ncurses')
source=($url/release/$pkgname-$pkgver.tar.gz)

build() {
  cd $srcdir/$pkgname-$pkgver
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
md5sums=('b09499ed5cfb1e03e291deea6fec851b')
