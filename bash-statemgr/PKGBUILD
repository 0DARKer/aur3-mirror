pkgname=bash-statemgr
pkgver=2013.7.12.1
pkgrel=1
pkgdesc='A Bash module for creating generic state/profile managers.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/bash-statemgr"
depends=(bash)
optdepends=('zenity: new state creation in Openbox pipe menus generated by obstatemgr')
source=(
  http://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2013.7.12.1.tar.xz
  http://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2013.7.12.1.tar.xz.sig
)
sha512sums=(
  ab43429ee10f2946f8e88de7ac22101df01f1b5405352b2027a342d20ff8fbe72699e0aaee51fa57fa62c4f8a8686b1e09f5351a7d6056ca6a54e297a64eeaba
  4076533e3d80d8c94ff7a5d2ca24d666a4ebe45f7da86a2aa2ebd424ab9a28f8c5dbdde342ab830277282e599c2a7d1738b22de40b91ff066f9424c65ec2e869
)
md5sums=(
  7560d10ac1b3921e27632c6b8353dbaf
  f8da99992bc1874697d116eb6e831462
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm644 statemgr "$pkgdir"/usr/share/bash/statemgr
  install -Dm755 obstatemgr "$pkgdir"/usr/bin/obstatemgr
}

