pkgname=bash-statemgr
pkgver=2013.7.12
pkgrel=1
pkgdesc='A Bash module for creating generic state/profile managers.'
arch=(any)
license=(GPL)
url="http://xyne.archlinux.ca/projects/bash-statemgr"
depends=(bash)
optdepends=('zenity: new state creation in Openbox pipe menus generated by obstatemgr')
source=(
  http://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2013.7.12.tar.xz
  http://xyne.archlinux.ca/projects/bash-statemgr/src/bash-statemgr-2013.7.12.tar.xz.sig
)
sha512sums=(
  b33f6a249135d7674b3ac58abd5e69050a7549d1faa5bc72d8cb5a26c158d3e1bec11a0af8378729438835117126cad1ea4cd0caae009a2ad1123e5df65492ee
  e01458843588fe4318b9f88b44baa520080a2bd6a0914351829d5d093b352ff9ddf238f6ce6ee8322fc8878fe4ba6703f3826ec1d4693f4b710982009dfa74aa
)
md5sums=(
  aef60e74fb75600c576c9bf93e58ec9a
  81b5cfba39f047ef18e5d1c5c420eef5
)

package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm644 statemgr "$pkgdir"/usr/share/bash/statemgr
  install -Dm755 obstatemgr "$pkgdir"/usr/bin/obstatemgr
}

