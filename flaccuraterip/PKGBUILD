_hkgname=flaccuraterip
pkgname=flaccuraterip
pkgver=0.2
pkgrel=1
pkgdesc="Verify FLAC files ripped form CD using AccurateRipâ„¢"
url="http://hackage.haskell.org/package/${_hkgname}"
license=('GPL-3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-http>=4000.2' 'haskell-http<4000.3' 'haskell-binary>=0.5' 'haskell-binary<0.6' 'haskell-cmdargs>=0.10' 'haskell-cmdargs<0.11' 'haskell-deepseq>=1.3' 'haskell-deepseq<1.4' 'haskell-process>=1.1' 'haskell-process<1.2')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz)
md5sums=('a8fd04ca7df7cb7d6b5c490de6c13612')
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O
    runhaskell Setup build
}
package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
