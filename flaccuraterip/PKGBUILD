# Maintainer: Nicola Squartini <tensor5@gmail.com>
_hkgname=flaccuraterip
pkgname=flaccuraterip
pkgver=0.3.2
pkgrel=1
pkgdesc="Verify FLAC files ripped from CD using AccurateRipâ„¢"
url="http://hackage.haskell.org/package/${_hkgname}"
license=('GPL-3')
arch=('i686' 'x86_64')
makedepends=('ghc' 'haskell-binary>=0.5' 'haskell-binary<0.8' 'haskell-deepseq>=1.3' 'haskell-deepseq<1.4' 'haskell-http>=4000.2' 'haskell-http<4000.3' 'haskell-optparse-applicative>=0.10' 'haskell-optparse-applicative<0.11' 'haskell-process>=1.2' 'haskell-process<1.3')
depends=('gmp')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/${_hkgname}/${pkgver}/${_hkgname}-${pkgver}.tar.gz)
md5sums=('832728d359c4174d84ee3993e9082144')
build() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O
    runhaskell Setup build
}
package() {
    cd ${srcdir}/${_hkgname}-${pkgver}
    runhaskell Setup copy --destdir=${pkgdir}
}
