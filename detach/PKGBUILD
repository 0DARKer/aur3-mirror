# Contributor: quantax -- contact via Arch Linux forum or AUR

pkgname=detach
pkgver=0.2.0
pkgrel=2
pkgdesc="Starts a program by detaching it from the running terminal."
arch=('i686' 'x86_64')
url="http://detach.sourceforge.net/"
license=('GPL')
source=(http://downloads.sourceforge.net/detach/$pkgname-$pkgver.tar.gz)
md5sums=('28f127add9d9583d467de475f2440c1b')

build() {
	cd "$srcdir/$pkgname-$pkgver"

	./configure --prefix=/usr
	make || return 1
	make DESTDIR="$pkgdir/" install || return 1
}

