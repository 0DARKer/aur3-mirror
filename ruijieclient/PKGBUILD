
# Contributor: imagelife <lovelinux229@gmail.com>
pkgname=ruijieclient
pkgver=0.7.9
pkgrel=1
pkgdesc="a ruijie network supplicant for GNU/Linux"
arch=('i686' 'x86_64')
url="http://code.google.com/p/ruijieclient/"
license=('LGPL3')
depends=('libpcap' 'libxml2')
source=(http://ruijieclient.googlecode.com/files/$pkgname-$pkgver.tar.bz2)
md5sums=('ba60c3547ddaf4e9cef4559f05de3508')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
  
}

