# Contributor: Jonathan Liu <net147@gmail.com>
pkgname=perl-grutatxt
_realpkgname=Grutatxt
pkgver=2.0.15
pkgrel=1
pkgdesc="A plain text to HTML (and other formats) converter"
arch=('i686' 'x86_64')
url="http://triptico.com/software/grutatxt.html"
license=('GPL2')
depends=('perl')
source=("http://triptico.com/download/$_realpkgname-$pkgver.tar.gz")
md5sums=('121d1bab222832ba357aab67bf6e8afe')

build() {
  cd "$srcdir/$_realpkgname-$pkgver"

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make install DESTDIR="$pkgdir/" || return 1

  # remove perllocal.pod and .packlist
  find "$pkgdir" -name perllocal.pod -delete
  find "$pkgdir" -name .packlist -delete
}

# vim:set ts=2 sw=2 et:
