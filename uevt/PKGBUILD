# Packager : Arnaud Durand-Favreau <biginoz _ @ _ free.fr>

pkgname=uevt
pkgver=2.0
pkgrel=6
pkgdesc="UEvt (for UPower / UDisk Event) is an energy manager and editor of independent disks and light system used office."
arch=('i686' 'x86_64')
url="http://elentir.sleipnir.fr/"
license=('GPLv3')
groups=()
depends=('upower' 'udisks' 'dbus' 'intltool' 'libnotify')
makedepends=('pkgconfig' 'gtk2' 'vala')
provides=()
conflicts=()
replaces=()
backup=()
source=(http://ftp.sleipnir.fr/uevt/uevt-$pkgver.tar.bz2)
md5sums=('932a08da1e6ad43268ca5e5445413bb3')

noextract=()

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  ./configure prefix=/usr
  make || return 1
}
package ()
{
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
