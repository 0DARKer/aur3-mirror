# Maintainer: Robin Baumgartner <robin@baumgartners.ch>
# Contributor: Florian Walch <florian.walch@gmx.at>
pkgname=tryton
pkgver=2.2.1
_pkgdir=2.2
pkgrel=1
pkgdesc="A three-tiers high-level general purpose application platform (client application)"
arch=('any')
url="http://www.tryton.org/"
license=('GPL3')
depends=('python2>=2.4' 'gtk2' 'pygtk>=2.0' 'librsvg' 'python-egenix-mx-base')
optdepends=('python2-pytz: timezone support')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$pkgname-$pkgver.tar.gz"
        'tryton.desktop')
md5sums=('702c4b9d6423d5ad9267ffe95342b735'
         '249788f939a9a8b598e4cbe3d94bd188')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
  install -D -m644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
