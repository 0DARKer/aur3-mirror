# Maintainer: Thomas Bahn <Thomas-Bahn@gmx.net>
# Contributor: Florian Walch <florian.walch@gmx.at>
pkgname=tryton
pkgver=1.8.0
_pkgdir=1.8
pkgrel=1
pkgdesc="A three-tiers high-level general purpose application platform (client application)"
arch=('any')
url="http://www.tryton.org/"
license=('GPL3')
depends=('pygtk' 'python-egenix-mx-base')
optdepends=('python-pytz: timezone support')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$pkgname-$pkgver.tar.gz" 'tryton.desktop')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
  install -D -m644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
md5sums=('696d280071c3981808149087fd2bb9c8'
         '249788f939a9a8b598e4cbe3d94bd188')
