# Maintainer: Gour <gour@gour-nitai.com>
# Contributor: Florian Walch <florian.walch@gmx.at>
pkgname=tryton
pkgver=1.4.1
pkgrel=1
pkgdesc="A three-tiers high-level general purpose application platform (client application)"
arch=('any')
url="http://www.tryton.org/"
license=('GPL3')
depends=('pygtk' 'python-egenix-mx-base')
optdepends=('python-pytz: timezone support')
makedepends=('setuptools')
source=("http://downloads.tryton.org/1.4/$pkgname-$pkgver.tar.gz" 'tryton.desktop')
md5sums=('55f721be9c822935c89376bb48dfaa9f' '249788f939a9a8b598e4cbe3d94bd188')

build() {
  cd $srcdir/$pkgname-$pkgver
  python setup.py install --root=$pkgdir
  install -D -m644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}

