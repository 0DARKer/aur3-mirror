# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=sflphone-plugins
_pkgname=sflphone
pkgver=1.2.2
pkgrel=2
pkgdesc="SIP/IAX2 compatible softphone"
arch=('i686' 'x86_64')
url="http://www.sflphone.org/"
license=('GPL3')
depends=('sflphone')
makedepends=('autoconf' 'evolution-data-server')
source=("https://projects.savoirfairelinux.com/attachments/download/5064/${_pkgname}-${pkgver}.tar.gz")
sha1sums=('42ddd866677f3dbc8d1c1517f178a54e4c9d4625')
options=(!makeflags)

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}/plugins"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}/plugins"
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
