# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=sflphone-plugins
_pkgname=sflphone
pkgver=1.2.3
pkgrel=1
pkgdesc="SIP/IAX2 compatible softphone"
arch=('i686' 'x86_64')
url="http://www.sflphone.org/"
license=('GPL3')
depends=('sflphone')
makedepends=('autoconf' 'evolution-data-server')
source=("https://projects.savoirfairelinux.com/attachments/download/6423/${_pkgname}-${pkgver}.tar.gz")
sha1sums=('ba15d874b5d03ffa70f75f61b614194d2172cd07')
options=(!makeflags)

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}/plugins"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}/plugins"
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
