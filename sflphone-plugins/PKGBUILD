# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=sflphone-plugins
_pkgname=sflphone
pkgver=1.3.0
pkgrel=1
pkgdesc="SIP/IAX2 compatible softphone"
arch=('i686' 'x86_64')
url="http://www.sflphone.org/"
license=('GPL3')
depends=('sflphone')
makedepends=('autoconf' 'evolution-data-server')
source=("https://projects.savoirfairelinux.com/attachments/download/9198/${_pkgname}-${pkgver}.tar.gz")
sha1sums=('5ef1c18f17822e694966250b6698c7fea9616070')
options=(!makeflags)

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}/plugins"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}/plugins"
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
