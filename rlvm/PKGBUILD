# Contributor: Jon Bergli Heier <snakebtie@jvnv.net>
pkgname=rlvm
pkgver=0.09
pkgrel=1
pkgdesc="RealLive clone for Linux and OSX"
arch=(i686 x86_64)
url="http://www.elliotglaysher.org/rlvm/"
license=('GPL')
depends=('boost>=1.40' sdl sdl_mixer sdl_image glew freetype2 sdl_ttf)
makedepends=(scons)
source=(http://github.com/eglaysher/rlvm/tarball/release-${pkgver})
md5sums=('58b0a43d3ea7e0ad87ba0344aa4a4d5c')

build() {
  cd "$srcdir/eglaysher-rlvm-1c5c0a8" # not very pretty

  scons --release
  mkdir -p "$pkgdir/usr/bin"
  install "$srcdir/eglaysher-rlvm-1c5c0a8/build/release/rlvm" "$pkgdir/usr/bin/"
}

# vim:set ts=2 sw=2 et:
