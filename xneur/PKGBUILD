# Contributor: Sergey Kolesov <cucullus.at.mail.ru>
# Previously contributed by StormBlast and Vyazovoi

pkgname=xneur
pkgver=0.12.0
pkgrel=2
pkgdesc="X Neural Switcher is a text analyser, it detects the language of input and corrects it if needed"
url="http://www.xneur.ru"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gstreamer0.10' 'enchant' 'libnotify')
source=("http://dists.xneur.ru/release-${pkgver}/tgz/${pkgname}-${pkgver}.tar.bz2"
	"http://gentoo-overlays.zugaina.org/sunrise/portage/x11-misc/${pkgname}/files/${pkgname}-${pkgver}-libnotify-0.7.patch")


md5sums=('d0ab3fac343914dd6a014d23e8c7d1db'
         'd90e391dbd3451b691eb8df50abdfc2a')

build() {
	cd $startdir/src/$pkgname-$pkgver
	
	sed -i -e "s/-Werror -g0//" configure.in	#	gcc compat fix
	patch -p1 < "${srcdir}/${pkgname}-${pkgver}-libnotify-0.7.patch"	# new libnotify fix

	./configure --prefix=/usr --sysconfdir=/etc \
   	--without-xosd
	make
	make DESTDIR=$startdir/pkg install
}

