# Maintainer: Christian Hesse <mail@eworm.de>

pkgname=cqrlogo
pkgver=0.3.6
pkgrel=1
pkgdesc="CGI QR-Code logo for web services"
arch=('i686' 'x86_64')
url="https://github.com/eworm-de/cqrlogo"
depends=('iniparser' 'libpng' 'qrencode')
makedepends=('markdown')
conflicts=('cqrlogo-git')
checkdepends=('zbar')
license=('GPL')
install=cqrlogo.install
backup=('etc/cqrlogo.conf')
source=("http://www.eworm.de/download/linux/${pkgname}-${pkgver}.tar.xz"{,.asc})

build() {
	cd ${pkgname}-${pkgver}/

	make
}

check() {
	cd ${pkgname}-${pkgver}/

	make check
}

package() {
	cd ${pkgname}-${pkgver}/

	make DESTDIR="${pkgdir}" install
}
sha256sums=('c02e22339aec283e0d36b5b7874c8bfe768d747e8b0e9fa54fbc7841e55542c2'
            'SKIP')
