# Contributor: rafael ff1 <rafael.f.f1 'at' gmail 'dot' com>
_pkgbasename=libsigc++
pkgname=lib32-$_pkgbasename
pkgver=2.2.8
pkgrel=2
pkgdesc="Libsigc++ implements a full callback system for use in widget libraries - V2 (32 bit)"
arch=('x86_64')
url="http://libsigc.sourceforge.net/"
license=('LGPL')
depends=("$_pkgbasename")
makedepends=('gcc-multilib>=4.5.0')
options=(!libtool !emptydirs)
source=(http://ftp.gnome.org/pub/GNOME/sources/${_pkgbasename}/2.2/${_pkgbasename}-${pkgver}.tar.bz2)
sha256sums=('0fd75fd8249e09ae2fd3ffd20c3fbaea11b47d71ba5ba2340ed98b6bdca40ea8')

build() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  ./configure --libdir=/usr/lib32 CXX='g++ -m32' #CC='gcc -m32'
  make
}

package() {
  cd "${srcdir}/${_pkgbasename}-${pkgver}"
  sed -i -e 's/^doc_subdirs/#doc_subdirs/' Makefile
  make DESTDIR="${pkgdir}" install
  rm -rf ${pkgdir}/usr/local
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
