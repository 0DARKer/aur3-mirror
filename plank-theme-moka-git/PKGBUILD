pkgname=plank-theme-moka-git
_pkgname=plank-theme-moka
pkgver=1.0.0
pkgrel=1
pkgdesc="Moka is the titular Plank theme of the Moka Project."
arch=('any')
url="https://github.com/moka-project/plank-theme-moka/"
license=('GPL3')
depends=('plank')
makedepends=('git')
optdepends=()
provides=('plank-theme-moka-git')
conflicts=('plank-theme-moka-git')
source=('git+https://github.com/moka-project/plank-theme-moka.git')
md5sums=('SKIP')

pkgver() {
  cd $srcdir/$_pkgname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {

  # create theme dirs
  install -d -m 755 "$pkgdir"/usr/share/plank/themes/Moka

  # install theme
  cd $srcdir/plank-theme-moka/Moka
  cp -r . "$pkgdir"/usr/share/plank/themes/Moka/
}
