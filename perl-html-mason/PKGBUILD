pkgname='perl-html-mason'
pkgver='1.45'
pkgrel='2'
pkgdesc="Build sites from modular Perl/HTML blocks"
arch=('any')
url='http://search.cpan.org/dist/HTML-Mason'
license=('PerlArtistic' 'GPL')
depends=('mod_perl>=1.999022' 'perl' 'perl-cache-cache>=1' 'perl-class-container>=0.07' 'perl-exception-class>=1.15' 'perl-html-parser' 'perl-log-any>=0.08' 'perl-params-validate>=0.7' 'perl-test-deep')

options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/HTML-Mason-1.45.tar.gz')
md5sums=('5ad416ae8425d81dde3daf5fab913a23')

build() {
  DIST_DIR="${srcdir}/HTML-Mason-1.45"
  export PERL_MM_USE_DEFAULT=1
  {
	cd "$DIST_DIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

