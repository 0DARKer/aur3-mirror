options=('!emptydirs')
depends=('perl-cache-cache>=1.00' 'perl-class-container>=0.07' 'perl-exception-class>=1.15' 'perl-html-parser' 'perl-log-any>=0.08' 'perl-params-validate>=0.70')
makedepends=('perl-test-deep')
