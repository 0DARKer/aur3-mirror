
# Maintainer: Dany Martineau <dany.luc.martineau gmail.com>

pkgname=classic_invaders
pkgver=none
pkgrel=3
pkgdesc="A classic alien space shooter."
arch=('i686' 'x86_64')
url="http://www.noquarterarcade.com/"
license=(BSD)
depends=('sdl_image' 'sdl_mixer' 'sdl_ttf' 'boost')
madepends=('make')
source=(http://www.noquarterarcade.com/system/files/Source.zip  cinvaders.desktop)
md5sums=('a43a24063c4918e0514db7b874a05d02'
         '36eebc8f23cc95b3ced3327d712fb64a')

build() {
cd ${srcdir}/
cd Classic_Invaders/Classic_Invaders/
make 
mkdir -p ${pkgdir}/usr/share/cinvaders
cp -r cinvaders data ${pkgdir}/usr/share/cinvaders/
touch ${pkgdir}/usr/share/cinvaders/data/scores
chmod 777 ${pkgdir}/usr/share/cinvaders/data/scores
mkdir -p ${pkgdir}/usr/bin
echo "cd '/usr/share/cinvaders/' && ./cinvaders" > ${pkgdir}/usr/bin/cinvaders
mkdir -p ${pkgdir}/usr/share/applications
chmod a+x ${pkgdir}/usr/bin/cinvaders
install ${srcdir}/cinvaders.desktop ${pkgdir}/usr/share/applications
}
