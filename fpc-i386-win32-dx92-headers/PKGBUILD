pkgname=fpc-i386-win32-dx92-headers
pkgver=2007.04
pkgrel=1
pkgdesc="Minimal Free Pascal headers for DirectX 9.0, supports up to April 2007 update (i386-win32)"
arch=(any)
url="http://msdn.microsoft.com/directx/"
license=('unknown')
depends=('fpc-cross-i386-win32')
makedepends=('fpc-cross-i386-win32')
source=("http://www.clootie.ru/fpc/files/FPC_DirectX92.zip")
md5sums=('1faffde17a88df1c1f939eb71b2b28bb')

build() {
  cd ${srcdir}
  ppcross386 -Twin32 D3DX8.pas
  ppcross386 -Twin32 D3DX9.pas
  ppcross386 -Twin32 Direct3D.pas
  ppcross386 -Twin32 DirectInput.pas
  ppcross386 -Twin32 DirectMusic.pas
  ppcross386 -Twin32 DirectPlay8.pas
  ppcross386 -Twin32 DirectSetup.pas
  ppcross386 -Twin32 DX7toDX8.pas
  ppcross386 -Twin32 DxDiag.pas
  ppcross386 -Twin32 dxerr8.pas
  ppcross386 -Twin32 DXErr9.pas
  ppcross386 -Twin32 X3DAudio.pas
  ppcross386 -Twin32 xact.pas
  ppcross386 -Twin32 XInput.pas
  
  mkdir -p $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/directx
  mv *.o $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/directx
  mv *.ppu $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/directx
  mv *.rst $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/directx
  mv *.a $pkgdir/usr/lib/fpc/2.6.0/units/i386-win32/directx
}