# Maintainer: kof <oleg008@gmail.com>
_npmname=qunit
pkgname=nodejs-qunit # All lowercase
pkgver=0.4.0
pkgrel=1
pkgdesc="A port of QUnit unit testing framework to nodejs"
arch=(any)
url="http: //github.com/kof/node-qunit"
license=(MIT)
depends=(nodejs)
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=(5d94126f5062ff8a7c08cee947e6656fb870ccb9)
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
