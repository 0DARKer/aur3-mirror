# Maintainer: archtux <antonio dot arias99999 at gmail dot com>

pkgname=bino
pkgver=1.3.5
pkgrel=1
pkgdesc="Stereoscopic 3D video player with multi-display support"
arch=('i686' 'x86_64')
url="http://bino3d.org/"
license=('GPL3')
depends=('ffmpeg>=20110724' 'freealut' 'freeglut' 'glew' 'libass' 'qt')
source=(http://download.savannah.gnu.org/releases-noredirect/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('a5cf3996d94a9dd6ecd6c64f9cee786a')


build() {
  cd $srcdir/$pkgname-$pkgver

  autoreconf -i
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}