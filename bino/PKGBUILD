# Maintainer: archtux <antonio dot arias99999 at gmail.com>

pkgname=bino
pkgver=1.3.1
pkgrel=1
pkgdesc="Stereoscopic 3D video player with multi-display support"
arch=('i686' 'x86_64')
url="http://bino3d.org/"
license=('GPL3')
depends=('ffmpeg>=20110724' 'freealut' 'freeglut' 'glew' 'libass' 'qt')
makedepends=('pkg-config')
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('31db6ae982aab50f45fd192fb57e293b')

build() {
  cd $srcdir/$pkgname-$pkgver

  autoreconf -i
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}