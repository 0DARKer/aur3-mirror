# Maintainer: archtux <antonio.arias99999 at gmail.com>

pkgname=bino
pkgver=1.2.0
pkgrel=1
pkgdesc="Stereoscopic 3D video player with multi-display support"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/bino/"
license=('GPL3')
depends=('ffmpeg>=20110724' 'freealut' 'freeglut' 'glew' 'libass' 'qt')
makedepends=('pkg-config')
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('0b82f1f9964a8a4057c53e219f0e2fb4')

build() {
  cd $srcdir/$pkgname-$pkgver

  autoreconf -i
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
}