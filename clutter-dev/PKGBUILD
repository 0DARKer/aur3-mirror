# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on [testing]'s clutter

_pkgbase=clutter
pkgname=clutter-dev
pkgver=1.6.4
_majorver=(`echo ${pkgver} | egrep -o '[0-9]+\.[0-9]*+'`)
pkgrel=1
pkgdesc="A GObject based library for creating fast, visually rich graphical user interfaces - Bleeding edge version"
arch=('i686' 'x86_64')
url="http://clutter-project.org/"
options=('!libtool')
license=('LGPL')
depends=('gdk-pixbuf2>=2.22.0' 'json-glib>=0.12.0' 'atk>=1.32.0' 'pango>=1.28.1' 'mesa>=7.8' 'libxcomposite' 'glib2>=2.26.0' 'cairo>=1.10.0' 'libxi')
makedepends=('gobject-introspection' 'gtk-doc')
conflicts=('clutter')
provides=("clutter=${pkgver}")
source=(http://www.clutter-project.org/sources/${_pkgbase}/${_majorver}/${_pkgbase}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --enable-introspection
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
