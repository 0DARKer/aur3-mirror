# Maintainer: Aleksey Filippov <sarum9in@gmail.com>
pkgname=python-iptables
pkgver=19.f0f005f
pkgrel=1
pkgdesc="Python iptables wrapper"
arch=('any')
url="https://github.com/sarum9in/iptables_python"
license=('GPL')
groups=()
depends=('python')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("$pkgname::git://github.com/sarum9in/iptables_python.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "$srcdir/$pkgname"
  python setup.py build
}

package() {
  cd "$srcdir/$pkgname"
  python setup.py install --root="$pkgdir/" --optimize=1
}

# vim:set ts=2 sw=2 et:
