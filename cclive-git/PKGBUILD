pkgname=cclive-git
pkgver=20110721
pkgrel=1
pkgdesc="Commandline downloader for popular video websites"
arch=("i686" "x86_64")
url="http://cclive.sourceforge.net/"
license=("GPL3")
depends=("boost-libs" "quvi")
makedepends=("git" "boost")
provides=("cclive")
conflicts=("cclive")

_gitroot="git://repo.or.cz/cclive.git"
_gitname="cclive"

build() {
	if [ -d ${_gitname} ]; then
		cd ${_gitname}
		git clean -dfx
		git reset --hard
		git pull origin
	else
		git clone $_gitroot
		cd ${_gitname}
	fi

	chmod +x autogen.sh
	./autogen.sh
	./configure --prefix=/usr --disable-silent-rules
	make DESTDIR="${pkgdir}" install
}

# vim: set noet ff=unix:
