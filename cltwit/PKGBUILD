# Maintainer: Jérôme Launay <jerome@projet-libre.org> 
pkgname=cltwit
pkgver=0.2
pkgrel=2
pkgdesc="Command line twitter utility written in Python."
arch=(any)
url="http://forge.projet-libre.org/projects/cltwit/wiki"
license=('WTFPL')
depends=('python2' 'python2-distribute' 
 'python2-tweepy'
)
optdepends=()
conflicts=()
source=(http://forge.projet-libre.org/attachments/download/5/$pkgname-$pkgver.tar.gz)
md5sums=('18179043f4ebfcb4a1c6d901d69d4f74')

build() {
  cd $srcdir/$pkgname-${pkgver//_/-}
  python2 setup.py install --root=$pkgdir/ --optimize=1
}
