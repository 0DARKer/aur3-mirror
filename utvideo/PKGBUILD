# Maintainer: DrZaius <lou[at]fakeoutdoorsman[dot]com>

pkgname=utvideo
pkgver=10.1.0
pkgrel=1
pkgdesc="Lossless video codec"
arch=('i686' 'x86_64')
url="http://umezawa.dyndns.info/wordpress/"
license=('GPLv2')
source=("http://umezawa.dyndns.info/archive/${pkgname}/${pkgname}-${pkgver}-src.zip"
	'add-pthread.patch'
)
md5sums=('a8d31053073e9da8568b4f961e9c55c6'
	 'a277468c7f5805dca0104b9f8273c5c8'
)

build() {
cd ${srcdir}/${pkgname}-${pkgver}
  patch -Np0 -i ${srcdir}/add-pthread.patch
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
