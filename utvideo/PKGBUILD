# Maintainer: DrZaius <lou[at]fakeoutdoorsman[dot]com>

pkgname=utvideo
pkgver=10.0.3
pkgrel=1
pkgdesc="Lossless video codec"
arch=('i686' 'x86_64')
url="http://umezawa.dyndns.info/wordpress/"
license=('GPLv2')
source=(http://umezawa.dyndns.info/archive/utvideo/utvideo-10.0.3-src.zip)
md5sums=('4b1f4e849eb3a2709319b65205c6bbc2')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
}
