# Maintainer: Det <nimetonmaili at gmail a-dot com>
# Based on the evolution-data-server package trunk

_pkgbase=evolution-data-server
pkgname=evolution-data-server-dev
pkgver=2.91.91
pkgrel=1
pkgdesc="Central location for addressbook and calendar storage in the GNOME Desktop"
arch=('i686' 'x86_64')
depends=('libsoup' 'nss' 'libgnome-keyring' 'heimdal' 'libical' 'db' 'libgdata-dev')
makedepends=('intltool' 'gperf' 'gobject-introspection')
options=('!libtool')
url="http://www.gnome.org"
license=('GPL')
conflicts=("${_pkgbase}")
provides=("${_pkgbase}=${pkgver}")
source=(http://ftp.gnome.org/pub/GNOME/sources/${_pkgbase}/2.91/${_pkgbase}-${pkgver}.tar.bz2)
sha256sums=(`wget ${source/.t*}.sha256sum -qO - | grep tar.bz2 | cut -d " " -f1`)

build() {
  cd ${_pkgbase}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --with-openldap=yes \
      --libexecdir=/usr/lib/evolution-data-server --with-krb5=/usr --with-libdb=/usr --disable-weather
  make
}

package() {
  cd ${_pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
