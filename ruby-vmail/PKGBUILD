_gemname=vmail
pkgname=ruby-$_gemname 
pkgver=0.6.4
pkgrel=1
pkgdesc="A Vim interface to Gmail"
arch=('i686' 'x86_64')
url="http://danielchoi.com/software/vmail.html"
license=('')
depends=('ruby' 'ruby-mail>=2.2.12' 'ruby-highline>=1.6.1')
makedepends=('rubygems')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('9f9df3d8b0f86ec511153a18ce265dd7')

build() {
  cd $srcdir
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
