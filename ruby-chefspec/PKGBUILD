# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=chefspec
pkgname=ruby-$_gemname
pkgver=0.8.0
pkgrel=1
pkgdesc="Write RSpec examples for Opscode Chef cookbooks"
arch=('any')
url="https://github.com/acrmp/chefspec"
license=('MIT')
depends=(
  'ruby'
  'ruby-aruba>=0.4.11'
  'ruby-cucumber>=1.2.0'
  'ruby-i18n>=0.6.0'
  'ruby-simplecov>=0.6.4'
  'ruby-rake>=0.9.2.2'
)
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('265c80b13109b6acdab222f224671921')
sha1sums=('5bfa70b098bb76486d424a72b63c8885cd85d850')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
