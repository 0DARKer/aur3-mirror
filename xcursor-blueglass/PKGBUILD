# Contributor: hugo  <hugoalveslobo@sapo.pt>
pkgname=xcursor-blueglass
pkgver=0.4
pkgrel=1
pkgdesc="Blue Glass Cursors Theme"
url="http://www.kde-look.org/content/show.php?content=5532"
depends=()
source=(http://www.kde-look.org/content/files/5532-BlueGlass-XCursors-3D-${pkgver}.tar.bz2)
md5sums=('c43e842adbf9b17026e4fd64fc93cd28')
install=('xcursor-blueglass.install')

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/usr/share/icons
	cp -R $startdir/src/BlueGlass-XCursors-3D-${pkgver}/Blue $startdir/pkg/usr/share/icons/
}
