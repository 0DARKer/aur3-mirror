# Maintainer: Troy Cox <troy.cox@rackspace.com>

pkgname=python2-rackspace-novaclient
pkgver=1.2
pkgrel=1
pkgdesc="Metapackage to install python-novaclient and Rackspace extensions"
arch=('i686' 'x86_64')
url="http://pypi.python.org/pypi/rackspace-novaclient/"
license=('GPL')
depends=('python2-novaclient' 'python2-rax-backup-schedule-python-novaclient-ext' 'python2-rax-default-network-flags-python-novaclient-ext' 'python2-os-networksv2-python-novaclient-ext' 'python2-rackspace-auth-openstack' 'python2-os-diskconfig-python-novaclient-ext')
makedepends=('python2')
provides=("$pkgname=$pkgver")
source=("http://pypi.python.org/packages/source/r/rackspace-novaclient/rackspace-novaclient-$pkgver.tar.gz")
md5sums=('2b7122998b3bc86b48f37f4ae7b66e5e')

build() {
	cd "$srcdir/rackspace-novaclient-1.2"
	python2 setup.py build || return 1
	python2 setup.py install --root=${pkgdir} || return 1
}
