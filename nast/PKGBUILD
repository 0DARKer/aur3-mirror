#-*-mode:sh-*-
#Contributor: Mirko Messer <mirk@chao.ch>
#Maintainer: Mirko Messer <mirk@chao.ch>
#Comments:
pkgname=nast 
pkgver=0.2.0
pkgrel=2
pkgdesc="Nast is a packet sniffer and a LAN analyzer based on Libnet and Libpcap."
url="http://nast.berlios.de/"
license=""
depends=('ncurses' 'libpcap' 'libnet')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://download.berlios.de/nast/nast-$pkgver.tar.gz)
md5sums=('77cbab45f5850d6cdb7ecb10e291bfa7')

build() {

	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
        
        mkdir -p $startdir/pkg/usr/{bin,man}
        mkdir -p $startdir/pkg/usr/man/man8
        make prefix=$startdir/pkg/usr install
}
