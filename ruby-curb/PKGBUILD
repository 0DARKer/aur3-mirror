 # Contributor: unexist <unexist@dorfelite.net>
 pkgname=ruby-curb
 pkgver=0.8.3
 pkgrel=1
 pkgdesc="Libcurl bindings for Ruby"
 arch=(any)
 url="http://curb.rubyforge.org/"
 license=("custom")
 depends=("ruby" "curl")
 makedepends=("ruby" "curl")
 source=(http://rubygems.org/gems/curb-$pkgver.gem)
 noextract=(curb-$pkgver.gem)
 md5sums=("ee5fe05be5f67b0c8549d5f6d695a52e")

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" curb-$pkgver.gem
}
