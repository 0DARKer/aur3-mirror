 # Maintainer: unexist <unexist@subforge.org>
 pkgname=ruby-curb
 pkgver=0.8.4
 pkgrel=1
 pkgdesc="Libcurl bindings for Ruby"
 arch=(any)
 url="http://curb.rubyforge.org/"
 license=("custom")
 depends=("ruby" "curl")
 makedepends=("ruby" "curl")
 source=(http://rubygems.org/gems/curb-$pkgver.gem)
 noextract=(curb-$pkgver.gem)
 md5sums=("c731fe519a13acb326f7e8f61e46e92c")

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" curb-$pkgver.gem
}
