# Maintainer: Graeme Gott <graeme@gottcode.org>

pkgname=simsu
pkgver=1.2.1
pkgrel=2
pkgdesc="A basic Sudoku game"
arch=('i686' 'x86_64')
url="http://gottcode.org/${pkgname}/"
license=('GPL')
depends=('qt' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')
install=${pkgname}.install
source=(http://gottcode.org/${pkgname}/${pkgname}-${pkgver}-src.tar.bz2)
md5sums=('a20a09930a7157cba7624b2eda960cb2')
sha256sums=('933913b8c550ba339fe24eb5b5f1ad04c31326894116d263b02145c787733428')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}/" install
}
