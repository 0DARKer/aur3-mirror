
# Maintainer: Dany Martineau <dany.luc.martineau gmail.com>

pkgname=kluppe
pkgver=0.6.14
pkgrel=2
pkgdesc="A loop-player and recorder, designed for live use."
arch=('i686' 'x86_64')
url="http://kluppe.klingt.org/"
license=('GPL')
depends=('jack-audio-connection-kit' 'gtk2' 'liblo' 'libusb' 'libxml2' 'alsa-lib' 'libsndfile')
madepends=('make')
source=(http://kluppe.klingt.org/downloads/$pkgname-$pkgver.tar.gz kluppe-0.6.14.diff kluppe.desktop)
md5sums=('547b587d18cdfa4692f174ad8d7e2d5a' '81a345c8ee02db625e952c60f4f1167d' 'a564e3b8c06a544ec844e9d9f100346c')

build() {
cd ${srcdir}/${pkgname}-${pkgver}
patch -p1 < ../kluppe-0.6.14.diff || return 1
make || return 1
make DESTDIR=${pkgdir} install
mkdir -p ${pkgdir}/usr/share/{applications,man}
mv ${pkgdir}/usr/man/ ${pkgdir}/usr/share
install ${srcdir}/kluppe.desktop ${pkgdir}/usr/share/applications
}
