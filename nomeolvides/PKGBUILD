#maintainer desarrolladores@softwareperonista.com.ar
pkgname=nomeolvides
pkgver=0.6.1
pkgrel=3
pkgdesc="Gestor de Efemerides"
arch=('i686' 'x86_64')
url="http://github.com/softwareperonista/nomeolvides"
license=('GPL')
depends=('libgee' 'gtk3' 'xdg-utils')
makedepends=('git' 'vala' 'autogen' 'libltdl')
conflicts=('nomeolvides-git')
source=("https://github.com/softwareperonista/$pkgname/archive/v$pkgver.tar.gz"
	'nuevo-desktop.patch'
	'fix_bug_81.patch'
	'fix_bug_82.patch')
md5sums=('a1df89de72093ba171dad7702f9ec762'
	 'c4535622ad2d874d83b2ce51d78244d3'
	 '2590c4eb7ccd4eb05fa6369fd1e06536'
	 '6d33526e654fc058de18de0f22898b6f')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  sed -i 's/\${PREFIX}\/doc\/nomeolvides/\$(docdir)/' Makefile.am
  sed -i 's/\${PREFIX}\/share/\$(datadir)/' Makefile.am

  patch -p0 < ../nuevo-desktop.patch
  patch -p0 < ../fix_bug_81.patch
  patch -p0 < ../fix_bug_82.patch

  ./autogen.sh --prefix=/usr --bindir=/usr/bin 
  
   make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
