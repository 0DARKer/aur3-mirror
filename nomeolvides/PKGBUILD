#maintainer desarrolladores@softwareperonista.com.ar
pkgname=nomeolvides
pkgver=0.4.1
pkgrel=1
pkgdesc="Gestor de Efemerides"
arch=('i686' 'x86_64')
url="http://github.com/softwareperonista/nomeolvides"
license=('GPL')
depends=('libgee' 'gtk3' 'glib2')
makedepends=('git' 'vala' 'autogen' 'libltdl')
conflicts=('nomeolvides-git')
source=("https://dl.dropbox.com/u/17092754/$pkgname-$pkgver.tar.gz")
md5sums=('73db340a2403245733d31524873813ac')

build() {
  cd "$srcdir"
  
  ./autogen.sh	
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir" install
}

