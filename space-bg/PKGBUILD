# Maintainer: Aaron Ali <t0nedef@causal.ca>
pkgname=space-bg
pkgver=2.0.1
pkgrel=2
pkgdesc="A background image setting program that grabs the daily astronomy image (http://apod.nasa.gov/apod/astropix.html)"
arch=('any')
license=('GPL')
url='http://www.causal.ca'
groups=()
depends=('hsetroot' 'python-beautifulsoup' 'libnotify' 'wget' 'youtube-dl' 'mplayer' 'vimeo-dl-git')
source=(
	'spacesetbg'
	'spacebgutils.py'
	'spaceimg.py'
	'spacevideo.sh'
	'fileage.sh'
)
package()
{
	install -Dm755 ${srcdir}/spacesetbg ${pkgdir}/usr/bin/spacesetbg
	install -Dm755 ${srcdir}/spacevideo.sh ${pkgdir}/usr/lib/space-bg/spacevideo.sh
	install -Dm755 ${srcdir}/fileage.sh ${pkgdir}/usr/lib/space-bg/fileage.sh
	install -Dm644 ${srcdir}/spaceimg.py ${pkgdir}/usr/lib/python3.3/site-packages/spaceimg.py
	install -Dm644 ${srcdir}/spacebgutils.py ${pkgdir}/usr/lib/python3.3/site-packages/spacebgutils.py
}
