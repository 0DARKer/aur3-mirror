# Contributor: Anonymous
# Generator  : CPANPLUS::Dist::Arch 0.15
pkgname='perl-boolean'
pkgver='0.20'
pkgrel='1'
pkgdesc="Boolean support for Perl"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
url='http://search.cpan.org/dist/boolean'
source=('http://search.cpan.org/CPAN/authors/id/I/IN/INGY/boolean-0.20.tar.gz')
md5sums=('a9dcfaa89e6b3ee52e0bb6e2d6b6c438')

build() {
  _DISTDIR="${srcdir}/boolean-0.20"
  export PERL_MM_USE_DEFAULT=1
  { cd "$_DISTDIR" &&
    perl Makefile.PL INSTALLDIRS=vendor &&
    make &&
    make test &&
    make DESTDIR="${pkgdir}/" install;
  } || return 1;

  find "$pkgdir" -name .packlist -delete
  find "$pkgdir" -name perllocal.pod -delete
}
