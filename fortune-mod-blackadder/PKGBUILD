pkgname=fortune-mod-blackadder
pkgver=20140324
pkgrel=1
_ver=4
pkgdesc="Fortune quotes from Blackadder"
arch=('any')
license=('custom:cc-sa-3.0')
url=("http://en.wikiquote.org/wiki/Blackadder")
depends=('fortune-mod')
makedepends=('fortune-mod' 'make' 'coreutils' 'sed' 'grep' 'wikiquote-fortune>=1.3')
source=("https://github.com/maandree/wikiquote-fortune-collection/archive/${_ver}.tar.gz")
sha256sums=(a9e222fc4e2f3e7914ea7f49a7f74093319d72621ccbbf6fec18cba3425c9460)


build()
{
    cd "${srcdir}/wikiquote-fortune-collection-${_ver}"
    make SHOWS=blackadder SCRIPTS=
}

package()
{
    cd "${srcdir}/wikiquote-fortune-collection-${_ver}"
    cd quotes/blackadder
    install -dm755 -- "${pkgdir}/usr/share/fortune"
    install -m644 -- blackadder blackadder.dat "${pkgdir}/usr/share/fortune"
}

