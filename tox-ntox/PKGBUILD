# Maintainer: Markus Unterwaditzer <markus[AT]unterwaditzer.net>
pkgname=tox-ntox
pkgdesc='Secure messaging for everyone (CLI client)'

license=('GLPv3')
pkgrel=1
pkgver=49a61ef
depends=('libsodium' 'libconfig' 'ncurses')
makedepends=('cmake' 'git')
arch=('i686' 'x86_64')
url=('http://tox.im')

source=('git+https://github.com/irungentoo/ProjectTox-Core.git')
md5sums=('SKIP')

_gitname=ProjectTox-Core
pkgver() {
    cd $_gitname
    git describe --always | sed 's|-|.|g'
}

build() {
    cd $_gitname
    mkdir build
    cd build
    cmake ..
    make
}

package() {
    cd $_gitname/build
    #make DESTDIR="$pkgdir" install
    install -Dm755 testing/nTox $pkgdir/usr/bin/nTox
}
