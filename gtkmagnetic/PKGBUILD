
# Contributor: Emmanuele Massimi <finferflu@gmail.com>
pkgname=gtkmagnetic
pkgver=2.2
pkgrel=1
pkgdesc="An interpreter for Magnetic Scrolls adventures."
arch=('i686')
url="http://msmemorial.if-legends.org/magnetic.htm"
license=('GPL')
depends=('gtk2' 'sdl_mixer')
source=("$pkgname-$pkgver.tar.gz") 
md5sums=('966a8a19f4ee7cbbebd594ee5498a391') 

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  make SOUND_SYSTEM="SDL_MIXER" || return 1
  install -D ./gtkmagnetic $startdir/pkg/usr/bin/gtkmagnetic
}

# vim:set ts=2 sw=2 et:
