# Maintainer: Jeremy M. <jskier at gmail dot com>
# Contributor: Jeremy M. <jskier at gmail dot com>

pkgname=libevtx
pkgver=20130113
pkgrel=1
pkgdesc="Library and tooling to access the Windows XML Event Log (EVTX) format"
url="https://code.google.com/p/libevtx"
license=('Lesser GPL')
arch=('i686' 'x86_64')
depends=('python')
options=()
source=(http://$pkgname.googlecode.com/files/${pkgname}-experimental-${pkgver}.tar.gz)
md5sums=('45ff652c909e7f23c8b616c8d90b7f1d')

build() {
	  cd "$srcdir"/${pkgname}-${pkgver}
	    ./configure --prefix=/usr
	      make
}

package() {
	        cd "$srcdir"/${pkgname}-${pkgver}
		  make DESTDIR="${pkgdir}" install
}
