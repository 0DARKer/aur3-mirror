# Maintainer: OmeGa <omega at mailoo dot org>

pkgname=cinnamon-theme-tyr
_file=NM4S-G4FJ-DLPZ
pkgver=2.0
pkgrel=1
pkgdesc="A simple and sleek theme for Cinnamon."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/153"
license=('unknown')
depends=('cinnamon')
optdepends=('ttf-droid: Droid font family')
source=($pkgname-$pkgver.zip::http://cinnamon-spices.linuxmint.com/uploads/themes/$_file.zip)
sha1sums=('e125aa0661bed3caf1eae6301178f971e38d9ecb')

package() {
  cd "$srcdir/Tyrthemes"
  find Tyr* -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}

