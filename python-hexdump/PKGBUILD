pkgname=python-hexdump
_pyname=hexdump
pkgver=2.0
pkgrel=1
pkgdesc='Cross-platform Python 2/3 library and tool to work with hex and binary data'
arch=('any')
url='https://pypi.python.org/pypi/hexdump'
license=('Public Domain')
depends=('python')
source=(https://pypi.python.org/packages/source/h/${_pyname}/${_pyname}-${pkgver}.zip)
sha512sums=('9244ebd402848d89cb12b819cb189cd610e5f1922fccccb5886a768d8fb1f6beb73c4081fa11e7e268ba7a62d2640ac4109d6f2283ecd7dab8e05b31885ca4f5')

check() {
  cd ${_pyname}-${pkgver}
  python hexdump.py --test output.txt
}

package() {
  cd ${_pyname}-${pkgver}
  python setup.py install -O1 --root="${pkgdir}" --prefix=/usr
}

