pkgname=python-hexdump
_pyname=hexdump
_hghash=c00238474d2a
pkgver=3.1
pkgrel=1
pkgdesc='Library and tool to work with hex and binary data'
arch=('any')
url='https://bitbucket.org/techtonik/hexdump'
license=('Public Domain')
depends=('python')
source=(https://bitbucket.org/techtonik/${_pyname}/get/${pkgver}.tar.bz2)
sha512sums=('4d8bb5cd649154fc3e44411eae5c515d1eec1c0a7afe31cbf6ee8e16071747ef261ec18c832037af05926014fc9860b5654f811d92e2ee5b907e04c7a822051c')

check() {
  cd "techtonik-${_pyname}-${_hghash}"
  python hexdump.py --test test.txt
  diff -u3 hextest.txt test.txt
}

package() {
  cd "techtonik-${_pyname}-${_hghash}"
  python setup.py install -O1 --root="${pkgdir}" --prefix=/usr
}

