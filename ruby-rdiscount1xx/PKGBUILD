# Contributor: Alexsandr Pavlov <kidoz at mail dot ru>
pkgname=ruby-rdiscount1xx
pkgver=1.6.5
pkgrel=1
pkgdesc="Fast Implementation of Gruber's Markdown in C."
arch=(any)
url="http://github.com/rtomayko/rdiscount"
license=('GPL')
depends=('ruby')
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/rdiscount-$pkgver.gem)
noextract=(rdiscount-$pkgver.gem)
md5sums=('2de321f1ba826f80b84fe45c0d013fcf')

build() {
  cd $srcdir
  # _gemdir is defined inside build() because if ruby[gems] is not installed on the system
  # makepkg will exit with an error when sourcing the PKGBUILD
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies -i "$pkgdir$_gemdir" rdiscount-$pkgver.gem
  
  mv -t $pkgdir/usr/ $pkgdir$_gemdir/bin
}
