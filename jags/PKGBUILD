# Maintainer: hotsauce 
# Contributor: Keith Schnakenberg <keith dot schnakenberg at gmail dot com>

pkgname=jags
pkgver=3.1.0
pkgrel=1
pkgdesc="Bayesian hierarchical models using Markov Chain Monte Carlo (MCMC) simulation"
arch=('x86_64 i686')
url="http://calvin.iarc.fr/~martyn/software/jags/"
license=('GPL')
depends=('lapack' 'libtool')
options=('!libtool')
makedepends=('gcc-fortran' 'lapack')
source=(http://sourceforge.net/projects/mcmc-jags/files/JAGS/3.x/Source/JAGS-$pkgver.tar.gz/download)
md5sums=('1f84163a3e5114d30d7832fc26e54acf')
build () {
   cd "$srcdir/JAGS-$pkgver"
  ./configure --prefix=/usr --libexecdir=/usr/lib/${pkgname}
  make
  make DESTDIR="$pkgdir/" install
}


