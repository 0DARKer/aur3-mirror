# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>
pkgname=obnam
pkgver=0.27
pkgrel=1
pkgdesc="easy, secure backup program"
arch=('i686' 'x86_64')
url="http://braawi.org/obnam/"
license=('GPL3+')
depends=('python2-tracing' 'python2-larch' 'python2-ttystatus' 'python2-cliapp')
source=(
"http://code.liw.fi/debian/pool/main/o/obnam/obnam_$pkgver.orig.tar.gz")


md5sums=('d086fb4ba40510947d5f7e0800c38965')




build() { 
    cd $srcdir/$pkgname-$pkgver
    sed -i -e 's/python/python2/' setup.py
    python2 setup.py build || return 1
    python2 setup.py install --root=$pkgdir || return 1
}
