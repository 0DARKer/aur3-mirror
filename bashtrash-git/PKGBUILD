# Maintainer: Giorgio Gilestro <giorgio@gilest.ro>
# Fork Maintainer: Limao Luo <luolimao@gmail.com>

pkgname=bashtrash-git
pkgver=20120829
pkgrel=1
pkgdesc="Freedesktop-complient trashcan implemented in bash script"
arch=(any)
url="https://github.com/robrwo/bashtrash/blob/master/trash"
license=(GPL)
makedepends=(git)

_gitroot="https://github.com/robrwo/bashtrash.git"
_gitname="bashtrash"

package() {
    cd $srcdir/
    msg "Connecting to GIT server...."

    if [[ -d $_gitname ]] ; then
	cd $_gitname && git pull origin
	msg "The local files are updated."
	cd ../
    else
	git clone $_gitroot
    fi

    msg "GIT checkout done or server timeout"
    install -Dm755 $_gitname/trash $pkgdir/usr/bin/trash
} 
