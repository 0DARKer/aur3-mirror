# Maintainer: Giorgio Gilestro <giorgio@gilest.ro>
# Fork Maintainer: Limao Luo <luolimao+AUR@gmail.com>

_pkgname=bashtrash
pkgname=$_pkgname-git
pkgver=26.f19c6dc
pkgrel=1
pkgdesc="Freedesktop-complient trashcan implemented in bash script"
arch=(any)
url=https://github.com/robrwo/$_pkgname/blob/master/trash
license=(GPL3)
makedepends=(git)
source=(git://github.com/robrwo/$_pkgname.git)
sha256sums=('SKIP')
sha512sums=('SKIP')

pkgver() {
    cd $_pkgname/
    echo $(git shortlog | grep -c '\s\+').$(git describe --always)
}

package() {
    install -Dm755 $_pkgname/trash "$pkgdir"/usr/bin/trash
}
