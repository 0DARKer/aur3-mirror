# Maintainer: kang <kang@insecure.ws>

pkgname=mingw32-gcrypt
pkgver=1.4.6
pkgrel=1
pkgdesc="A Crypt Library (mingw32)"
arch=('any')
license=('GPL')
makedepends=(mingw32-gcc mingw32-libgpg-error)
url="http://ftp.gnu.org"
source=("ftp://ftp.gnupg.org/gcrypt/libgcrypt/libgcrypt-${pkgver}.tar.bz2")
md5sums=('dbf99425a4fe9217c84ce3a35d938634')

build() {
  cd "$srcdir/libgcrypt-$pkgver"

  unset LDFLAGS
  ./configure --prefix=/usr/i486-mingw32 --host i486-mingw32
  make || return 1
  make install DESTDIR=$pkgdir || return 1
}

# vim:set ts=2 sw=2 et:
