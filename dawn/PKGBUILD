# Maintainer: Luis Sarmiento <lgsarmientop@unal.edu.co>

pkgname=dawn
pkgver=3_90b
pkgrel=1
pkgdesc="3D geometrical postscript renderer"
url="http://geant4.kek.jp/~tanaka/DAWN/About_DAWN.html"
license=("unknown")
arch=('i686' 'x86_64')
makedepends=('texlive-core')
depends=('tk' 'libx11' 'gv')

source=("http://geant4.kek.jp/~tanaka/src/${pkgname}_${pkgver}.tgz"
	"dawn-3.90b-no-interactive.patch"
	"make_DESTDIR.patch"
	)	

md5sums=('3017f35db5c1ba7f7e95bff6f2d8bd46'
         '7bb06c81f2f1ac5475939a40dd7cbc80'
         '4128a7eb7ea6395e754cc3a02259425e')

build () {
	cd $srcdir/${pkgname}_${pkgver}	
	patch -Np2 < ${srcdir}/dawn-3.90b-no-interactive.patch
	sed -i -e '/strip/d' Makefile*in
	
	make clean && make guiclean
	./configure
	make
}

package() {
	cd $srcdir/${pkgname}_${pkgver}	
	patch -Np2 < ${srcdir}/make_DESTDIR.patch
	[ -d $pkgdir/usr/bin/ ] || mkdir -p $pkgdir/usr/bin/
	make DESTDIR=$pkgdir install
		
	DOCDIR=/usr/share/doc/dawn
	[ -d $pkgdir$DOCDIR ] || mkdir -p $pkgdir$DOCDIR
	cd $srcdir/${pkgname}_${pkgver}
	pdflatex DOC/G4PRIM_FORMAT_24.tex
	cp DOC/*.pdf   $pkgdir$DOCDIR/
	cp DOC/*.html  $pkgdir$DOCDIR/
}
 
