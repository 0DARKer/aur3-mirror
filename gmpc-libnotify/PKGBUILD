pkgname=gmpc-libnotify
pkgver=0.20.0
pkgrel=1
pkgdesc="Shows song change notification using your systems notification daemon. "
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_LIBNOTIFY"
license="GPL"
depends=('libmpd>=0.20.0' 'libxml2' 'gmpc>=0.20.0' 'libnotify')
source=(http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz)
md5sums=('c728ac2deb5aa7e8ffad430690527ab4')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}
