pkgname=systester
pkgver=1.1.1
pkgrel=1
pkgdesc="System Stability Tester is a RAM/CPU burning and benchmarking program"
license="GPL"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/systester/"
depends=('qt' 'gmp')
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}/1.1.0/${pkgname}-${pkgver}-src.tar.bz2)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}-src/cli
  make

  cd ${srcdir}/${pkgname}-${pkgver}-src
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}-src/cli
  mkdir -p ${pkgdir}/usr/bin
  cp systester-cli /${pkgdir}/usr/bin/

  cd ${srcdir}/${pkgname}-${pkgver}-src
  cp systester /${pkgdir}/usr/bin/
}

md5sums=('44813768f93aa89fb4d110f957179e0e')
