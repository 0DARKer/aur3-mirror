pkgname=systester
pkgver=1.4.2
pkgrel=1
pkgdesc="System Stability Tester is a RAM/CPU burning and benchmarking program"
license="GPL"
arch=('i686' 'x86_64')
url="http://systester.sourceforge.net/"
depends=('qt>=4.5.3' 'gmp>=4.2.1')
source=(http://sourceforge.net/projects/${pkgname}/files/${pkgname}/1.4.0/${pkgname}-${pkgver}.tar.gz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}/cli
  make

  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}/cli
  mkdir -p ${pkgdir}/usr/bin
  cp systester-cli /${pkgdir}/usr/bin/

  cd ${srcdir}/${pkgname}-${pkgver}
  cp systester /${pkgdir}/usr/bin/
}

sha256sums=('8963f2eea26caad0f07560423bcf77e5106215258ed0299b5711e47a5835570b')
