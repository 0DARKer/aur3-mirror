pkgname=xhtml-modularization-docs
pkgver=20081008
pkgrel=1
pkgdesc="XHTML Modularization Documentation"
arch=('i686' 'x86_64')
url="http://www.w3.org/TR/xhtml-modularization/"
license=('W3C')
options=('docs')
source=("http://www.w3.org/TR/2008/REC-xhtml-modularization-20081008/xhtml-modularization.tgz")
md5sums=('404429a5aae9c60382569d4d1b67acc0')

build(){
  cd "$srcdir/xhtml-modularization-20081008"
  mkdir -p "$pkgdir/usr/share/doc/xhtml-modularization"
  cp -rf * "$pkgdir/usr/share/doc/xhtml-modularization" || return 1
}
