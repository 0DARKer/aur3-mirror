# Maintainer:  Lukas K. <lukas@carrotIndustries.net>

pkgname=mspdebug
pkgver=0.13
pkgrel=6
pkgdesc="MSP Debugger"
arch=('i686' 'x86_64')
url="http://mspdebug.sourceforge.net/"
license=('GPL')
source=(http://downloads.sourceforge.net/project/$pkgname/$pkgname-$pkgver.tar.gz
Makefile.patch)

md5sums=('ef3dfc0671991e744563a15b2b47ef93'
         '6643e9ead40df87674255da738ecd8b2')

build() {
  cd $startdir/src/${pkgname}-${pkgver}
  make clean
  patch Makefile < $startdir/Makefile.patch
  make
  make PREFIX=$startdir/pkg/usr install
}
