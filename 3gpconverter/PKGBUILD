pkgname=3gpconverter
pkgver=0.6
pkgrel=5
pkgdesc="3gp converter is a GUI(kommander script) that uses ffmpeg to convert video files in the 3gp format"
arch=('i686')
license=('GPL')
url="http://kde-apps.org/content/show.php/3gp-converter?content=55313"
depends=('kdewebdev' 'amrnb' 'amrwb' 'ffmpeg-amr-svn')
source=(http://kde-apps.org/CONTENT/content-files/55313-$pkgname-$pkgver.tar.bz2 3gpconverter.sh)
md5sums=('94a9b518cad6a1757e914e6e8672cd3e' '74d052580fc1257657527dffc347d7a7')

build() {
  cd $startdir/src/$pkgname-$pkgver
	install -D -m 755 ./3gpconverter-0.6.kmdr $startdir/pkg/opt/kde/share/apps/kommander/scripts/3gpconverter.kmdr || return 1
	install -D -m 755 $startdir/3gpconverter.sh $startdir/pkg/opt/kde/bin/3gpconverter || return 1
}
