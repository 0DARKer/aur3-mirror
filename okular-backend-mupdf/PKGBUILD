# Maintainer: xylosper <darklin20@gmail.com>

pkgname=('okular-backend-mupdf')
pkgver=0.0.1
pkgrel=2
arch=('i686' 'x86_64')
license=('GPL')
depends=('kdegraphics-okular')
makedepends=('gcc' 'svn' 'automoc4' 'cmake')
source=($pkgname.patch)
url=svn://anonsvn.kde.org/home/kde/trunk/playground/graphics/okular/mupdf
md5sums=('5cb3df2fff7fc367902c560ace65e860')

build() {
	svn export $url
	cd $srcdir/mupdf
	patch -p1 < ../$pkgname.patch
	./get-mupdf.sh
	mkdir build && cd build && cmake -DCMAKE_INSTALL_PREFIX:PATH=$pkgdir/usr .. && make || return 1
}

package() {
	pkgdesc="MuPDF-based backend for Okular"
	cd $srcdir/mupdf/build
	make install || return 1
}
