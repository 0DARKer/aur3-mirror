# Maintainer: James Duley <jagduley at gmail dot com>
pkgname=python-control
pkgver=0.6c
pkgrel=1
pkgdesc="A python module that implements basic operations for analysis and design of feedback control systems."
arch=('any')
url="http://sourceforge.net/projects/python-control/"
license=('unknown')
depends=('python-scipy' 'python-matplotlib')
optdepends=('ipython')
source=(http://sourceforge.net/projects/$pkgname/files/control-$pkgver.tar.gz)
md5sums=('836a5deb3a80ef3dabad8071373095a0')


package() {
  cd "$srcdir/control-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}


