# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman
# Maintainer: Thomas Boerger <devel@ghcif.de>
pkgname=perl-config-simple
pkgver=4.59
pkgrel=1
pkgdesc="Simple configuration file class to create and read config files"
url="http://search.cpan.org/~sherzodr/Config-Simple"
depends=('perl')
arch=('i686' 'x86_64')
license="GPL"
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/S/SH/SHERZODR/Config-Simple-$pkgver.tar.gz) 
md5sums=('96513b61c7db591339ce2577878a3b32')

build() {
  cd  $startdir/src/Config-Simple-$pkgver
  eval `perl -V:archname`
  # Force module installation to "current" perl directories.
  /usr/bin/perl Makefile.PL \
      INSTALLARCHLIB=/usr/lib/perl5/current/${archname} \
      INSTALLSITELIB=/usr/lib/perl5/site_perl/current \
      INSTALLSITEARCH=/usr/lib/perl5/site_perl/current/${archname}
  /usr/bin/make || return 1
  /usr/bin/make DESTDIR=$startdir/pkg install
  # remove *.pod, .packlist:
  /usr/bin/find $startdir/pkg -name '.packlist' -exec rm  '{}' \;
  /usr/bin/find $startdir/pkg -name '*.pod' -exec rm  '{}' \;
}
