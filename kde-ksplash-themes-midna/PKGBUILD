
# Maintainer: xphnx <xphnx@riseup.net>

pkgname=kde-ksplash-themes-midna
pkgver=2.0.0
pkgrel=1
pkgdesc="Midna KSplash-Theme, based on litho flowers for KaOS."
arch=('x86_64')
url="http://kaosx.us"
license=('GPL')
groups=('kde' 'kdeartwork')
#depends=('')
#conflicts=('')
source=('http://kaosx.us/repo/build/kde-kdm-themes-midna-2.0-1-x86_64.pkg.tar.xz')
md5sums=('0f3d89b4559d22734a93d5ae69f77eda')

package() {
  cd $srcdir/midna
  mkdir -p $pkgdir/usr/share/apps/ksplash/Themes/midna
  cp -R ./usr/share/apps/ksplash/Themes/midna $pkgdir/usr/share/apps/ksplash/Themes/midna
  # fix file rights
  chmod 755 -R $pkgdir/usr/share/apps/ksplash/Themes/midna
}
