# Maintainer: Mariusz Libera <mariusz.libera@gmail.com>
# Contributor: Bennett Goble <nivardus at gmail dot com>
pkgname=demorse
pkgver=1.1
pkgrel=1
pkgdesc="A console application for decoding Morse code signals into text."
arch=('i686' 'x86_64')
url="http://5b4az.chronos.org.uk/pages/morse.html"
license=('GPL3')
depends=('alsa-lib')
changelog=Changelog
source=("http://5b4az.chronos.org.uk/pkg/morse/demorse/demorse-${pkgver}.tar.bz2")
sha256sums=('fde3da5fc64074aba43635e2c3efed719cb23c02a4dbe5821a61945fcfafdb56')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="$pkgdir" install

	# documentation
	install -dm755 "${pkgdir}/usr/share/doc/${pkgname}"
	install -m644 README doc/* "${pkgdir}/usr/share/doc/${pkgname}"
}

