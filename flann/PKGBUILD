pkgname=flann
pkgver=1.6.8
pkgrel=1
pkgdesc="FLANN is a library for performing fast approximate nearest neighbor searches in high dimensional spaces"
arch=('any')
url='http://www.cs.ubc.ca/~mariusm/index.php/FLANN/FLANN'
license=('GPL' 'LGPL')
makedepends=('cmake' 'pkgconfig')
source=("http://people.cs.ubc.ca/~mariusm/uploads/FLANN/flann-1.6.8-src.zip")

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../flann-1.6.8-src \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
md5sums=('4ec7718eacc0882bce1bcd51f01c2d26')

