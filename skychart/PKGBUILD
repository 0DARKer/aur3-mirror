pkgname=skychart
pkgver=3.4
pkgrel=1
pkgdesc="Free software to draw sky charts, aka Cartes du Ciel"
arch=(i686)
license=('GPL')
depends=('gtk2')
url="http://www.ap-i.net/skychart/start"
source=(http://download.origo.ethz.ch/skychart/3239/skychart-"${pkgver}"-1829-linux_i386.tar.bz2)
sha1sums=('5fc75cdfcedb04e27b4f89080b1efaa6180d7993')
install=skychart.install

build() {
mkdir "${pkgdir}"/usr/
tar -xjf "${srcdir}"/skychart-"$pkgver"-1829-linux_i386.tar.bz2 --strip 1 -C "${pkgdir}/usr/"
}
