#Contributor: Alexander Vynnyk <cosmonaut@mail.ua>

pkgname=skychart
pkgver=3.8
pkgrel=1
pkgdesc="Free software to draw sky charts, aka Cartes du Ciel"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2')
url="http://www.ap-i.net/skychart/start"
install=skychart.install

case $arch in
i686)
       _real_arch=i386
       sha1sums=('97f6e9412f5256d43ab5512205a9b43d6780db55')
;;
x86_64)
       _real_arch=x86_64
       sha1sums=('e3eba42792a668aef882d33a9ef69a2c3b09c452')
;;
esac

source=(http://sourceforge.net/projects/skychart/files/1-%20cdc-skychart/version_3.8/skychart-"${pkgver}"-2450-linux_"${_real_arch}".tar.bz2)

package() {
mkdir "${pkgdir}"/usr/
tar -xjf "${srcdir}"/skychart-"$pkgver"-2450-linux_"${_real_arch}".tar.bz2 --strip 1 -C "${pkgdir}/usr/"
}

