pkgname=faba-colors-git
_pkgname=faba-colors
pkgver=1.0.0
pkgrel=1
pkgdesc="These are supplementary theme for the Faba icon set. It contains colourified versions of the Faba icons."
arch=('any')
url="https://github.com/snwh/faba-colors"
license=('GPL3')
depends=('faba-icons-git')
makedepends=('git')
optdepends=()
provides=('faba-colors-git')
conflicts=('faba-colors-git')
source=('git+https://github.com/snwh/faba-colors.git')
md5sums=('SKIP')

pkgver() {
  cd $srcdir/$_pkgname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {

  # create theme dirs
  install -d -m 755 "$pkgdir"/usr/share/icons/Faba-Blue
  install -d -m 755 "$pkgdir"/usr/share/icons/Faba-Green
  install -d -m 755 "$pkgdir"/usr/share/icons/Faba-Orange

  # install theme
  cd $srcdir/faba-colors/Faba-Blue
  cp -r . "$pkgdir"/usr/share/icons/Faba-Blue/
  cd $srcdir/faba-colors/Faba-Green
  cp -r . "$pkgdir"/usr/share/icons/Faba-Green/
  cd $srcdir/faba-colors/Faba-Orange
  cp -r . "$pkgdir"/usr/share/icons/Faba-Orange/
}
