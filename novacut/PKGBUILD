pkgname=novacut
pkgver=11.08.0
pkgrel=2
pkgdesc="A collaborative video editor."
arch=('any')
url="http://www.kickstarter.com/projects/novacut/novacut-pro-video-editor"
license=('AGPL3')
depends=('python2' 'pygobject' 'gstreamer0.10-python')
source=("https://launchpad.net/$pkgname/trunk/11.08/+download/$pkgname-$pkgver.tar.gz")
md5sums=('fb0611b9f6c16917839319b084208833')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --prefix=/usr --root="$pkgdir" -O1
}
