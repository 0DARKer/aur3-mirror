pkgname=novacut
pkgver=11.09.0
pkgrel=1
pkgdesc="A collaborative video editor."
arch=('any')
url="http://www.kickstarter.com/projects/novacut/novacut-pro-video-editor"
license=('AGPL3')
depends=('python' 'python-gobject' 'gstreamer0.10-python' 'python-userwebkit' 'python-microfiber')
source=("https://launchpad.net/$pkgname/trunk/11.09/+download/$pkgname-$pkgver.tar.gz")
md5sums=('1bca128b0f092c47cc38b3e4b32e8e5d')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --prefix=/usr --root="$pkgdir" -O1
}
