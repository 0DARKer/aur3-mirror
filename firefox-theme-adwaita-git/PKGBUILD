# Maintainer: Diego Principe <cdprincipe@at@gmail@dot@com>

pkgname=firefox-theme-adwaita-git
pkgver=21.1_7487a12
pkgrel=1
pkgdesc="Adwaita theme for Firefox (Matches the default Gnome Shell theme)"
url="https://addons.mozilla.org/en-US/firefox/addon/adwaita/"
arch=('any')
license=('MPL')
depends=("firefox")
makedepends=('unzip' 'zip')
provides=('firefox-theme-adwaita')
conflicts=('firefox-theme-adwaita')
source=("git://github.com/gnome-integration-team/firefox-gnome.git")
md5sums=('SKIP')

pkgver() {
  cd $srcdir/firefox-gnome
  echo $(cat $srcdir/firefox-gnome/theme/install.rdf | grep em:version | cut -f2 -d'>' | cut -f1 -d'<')_$(git rev-parse --short HEAD)
}



package() {

rel=$(cat $srcdir/firefox-gnome/theme/install.rdf | grep em:version | cut -f2 -d'>' | cut -f1 -d'<')
emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' $srcdir/firefox-gnome/theme/install.rdf) || return 1
dstdir=$pkgdir/usr/lib/firefox/browser/extensions/${emid}


  cd $srcdir/firefox-gnome/theme
  install -d $dstdir
  cp -R * $dstdir
  find $pkgdir -type d -exec chmod 0755 {} \;
  find $pkgdir -type f -exec chmod 0644 {} \;
}
