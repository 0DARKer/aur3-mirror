# Maintainer: crazyelf5

pkgname=gtk-theme-anewstart
pkgver=1.3
pkgrel=1
pkgdesc="A slick, clear theme for GNOME desktop environment"
arch=('any')
url="http://alecive.deviantart.com/art/A-New-Start-1-3-169100684"
license=('cc-by-nc-sa')
makedepends=('')
depends=('gtk3' 'gtk-engine-unico' 'gtk-engine-murrine')
source=('http://www.deviantart.com/download/169100684/a_new_start___1_3_by_alecive-d2soex8.zip')
md5sums=('292ee0a1952e18d2c2c98e695a0ce7ad')


build() {
  install -dm755 "$pkgdir/usr/share/themes"
  cp -R "$srcdir"/ANewStart/1*/ANewStart "$pkgdir/usr/share/themes/"
  cd "$pkgdir/usr/share/themes/"
  find . -type f -exec chmod 644 {} \;
  find . -type d -exec chmod 755 {} \;
}
