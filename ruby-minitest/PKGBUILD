pkgname=ruby-minitest
_gemname=minitest
pkgver=2.8.1
pkgrel=1
pkgdesc="Provides a complete suite of testing facilities supporting TDD, BDD, mocking and benchmarking."
arch=(any)
url="https://github.com/seattlerb/minitest"
license=("MIT")
depends=('ruby' 'ruby-hoe>=2.12')
makedepends=('ruby')
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('659d78cda9545df15d69cd42b3cae587')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  
  gem install --ignore-dependencies -i "${pkgdir}${_gemdir}" "${_gemname}-${pkgver}.gem"
}
