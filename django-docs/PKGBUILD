# Contributor: Apkawa <apkawa@gmail.com>

pkgname=django-docs
pkgver=1.2.5
pkgrel=1
pkgdesc="Docs for Django's release"
arch=('any')
url="http://docs.djangoproject.com/en/1.2/"
license=('GPL')
makedepends=('python-sphinx')
source=("http://media.djangoproject.com/releases/1.2/Django-${pkgver}.tar.gz")

build() {
  cd $srcdir/Django-${pkgver}/docs/
  make html
  mkdir ${pkgdir}/usr/share/doc/ -p
  mv _build/html ${pkgdir}/usr/share/doc/django

}
md5sums=('e031ea3d00996035e49e4bfa86e07c40')
