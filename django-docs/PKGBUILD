# Contributor: Apkawa <apkawa@gmail.com>

pkgname=django-docs
pkgver=1.3.1
pkgrel=1
pkgdesc="Docs for Django's release"
arch=('any')
url="http://docs.djangoproject.com/en/1.3/"
license=('GPL')
makedepends=('python-sphinx')
source=("http://media.djangoproject.com/releases/1.3/Django-${pkgver}.tar.gz")

build() {
  cd $srcdir/Django-${pkgver}/docs/
  make html
  mkdir ${pkgdir}/usr/share/doc/ -p
  mv _build/html ${pkgdir}/usr/share/doc/django

}
md5sums=('62d8642fd06b9a0bf8544178f8500767')
