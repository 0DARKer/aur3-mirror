pkgname=git-svn-helpers
pkgver=0.7
pkgrel=1
pkgdesc="A collection of command line tools that greatly simplify using git for svn repositories."
arch=(any)
url="http://pypi.python.org/pypi/git-svn-helpers/0.7"
source=(http://pypi.python.org/packages/source/g/git-svn-helpers/$pkgname-$pkgver.zip 'LICENSE')
license=('BSD')
md5sums=('0f429bcc35a4a7c4368b1f1adbfd1689' \
         '363d5a2d088c23ed4188260fc5283817')
depends=('python')
makedepends=('unzip setuptools')
options=(!emptydirs)

build() {
  install -d $pkgdir/usr/share/licenses/$pkgname
  cd $srcdir/$pkgname-$pkgver
  python setup.py install --root=$pkgdir/

  install -D -m644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/
}


