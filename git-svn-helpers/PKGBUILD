# Contributor: Nathan Owe. <ndowens04 at gmail>
# Contributor: Nitish Padgaonkar <nitishp at gmail>
pkgname=git-svn-helpers
pkgver=0.8
pkgrel=1
pkgdesc="A collection of command line tools that greatly simplify using git for svn repositories."
arch=(any)
url="https://github.com/tomster/git-svn-helpers"
license=('BSD')
depends=('python2' 'setuptools' 'python2-jarn.mkrelease')
makedepends=('unzip')
source=(http://pypi.python.org/packages/source/g/git-svn-helpers/$pkgname-$pkgver.zip 
        'LICENSE')
md5sums=('1eda0bce278e1e3d780d91b3f7e081e5'
         '363d5a2d088c23ed4188260fc5283817')
options=(!emptydirs)

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir/ --optimize=1
  install -d $pkgdir/usr/share/licenses/$pkgname
  install -D -m644 $srcdir/LICENSE $pkgdir/usr/share/licenses/$pkgname/
}
