# Contributor: Moritz Heidkamp <moritz@twoticketsplease.de>
pkgname=chunksync
pkgver=0.2
pkgrel=1
pkgdesc="An incremental backup program, especially suited for encrypted disks."
arch=(i686 x86_64)
url="http://chunksync.florz.de/"
license=('custom')
groups=()
depends=(openssl)
makedepends=(perl)
optdepends=(chunkfs)
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://chunksync.florz.de/chunksync_${pkgver}.tar.gz LICENSE)
noextract=()
md5sums=('c736fa5bcd612696cb83526d81294b72' '8442a3d8ac740f9a18d0ecd019e5768f')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  mkdir -p ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}/usr/share/man/man1
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}

  make || return 1
  make DESTDIR="${pkgdir}" PREFIX="/usr" install
  install -m644 ../LICENSE ${pkgdir}/usr/share/licenses/${pkgname}
}
