# Maintainer: Xyne
# Contributor: Michal Bozon <michal.bozon__at__gmail.com>

pkgname=inchi
pkgver=1.03
pkgrel=1
pkgdesc="IUPAC InChI utility"
arch=('i686' 'x86_64')
url="http://www.iupac.org/inchi/"
license=('LGPL')
makedepends=('gcc' 'make')
source=('http://www.iupac.org/inchi/download/version1.03/INCHI-1-API.zip'
        'http://www.iupac.org/inchi/download/version1.03/INCHI-1-DOC.zip')
md5sums=('7dd26285418528172326aa32f9a19ba3'
         '6a380e9b1ac8b963b66304e1c16a31bb')

build() {
  cd "$srcdir/INCHI-1-API/INCHI/gcc/inchi-1"
  make
}

package() {
  install -Dm755 "$srcdir/INCHI-1-API/INCHI/gcc/inchi-1/inchi-1" "$pkgdir/usr/bin/inchi-1"

  cd "$srcdir/INCHI-1-DOC"
  for pdf in *.pdf; do
    install -Dm644 "$pdf" "$pkgdir/usr/share/doc/inchi-1/$pdf"
  done
}

