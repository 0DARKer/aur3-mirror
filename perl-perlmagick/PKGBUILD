pkgname='perl-perlmagick'
pkgver='6.82.0'
pkgrel='1'
pkgdesc="Read, query, transform, and write images"
arch=('i686' 'x86_64')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('glibc>=2.17' 'perl')
makedepends=()
url='http://search.cpan.org/dist/PerlMagick'
source=('http://search.cpan.org/CPAN/authors/id/J/JC/JCRISTY/PerlMagick-6.82.0.tar.gz')
md5sums=('0423d7e524001fa1f2a6476e024f6c3a')
sha512sums=('aa8fd5f0a3cbd221e2257d3185843e94b45e22851cec91906d66ca685ec1cf0d926ee7d08a92e75ad97a964b9371d2bc93e4861b697291cb7bcefd4cfa58e37f')
_distdir="PerlMagick-6.82"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$srcdir/$_distdir"
    /usr/bin/perl Makefile.PL
    make
  )
}

check() {
  cd "$srcdir/$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    make test
  )
}

package() {
  cd "$srcdir/$_distdir"
  make install

  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

