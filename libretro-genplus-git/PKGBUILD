# Maintainer: almostalive <almostalive2003 at lavabit dot com>

pkgname=libretro-genplus-git
_gitname=Genesis-Plus-GX
pkgver=2013.04.08_d8af16f
pkgrel=1
pkgdesc="libretro implementation of Genesis-Plus-GX. (Sega Genesis/Sega Master System/Sega GameGear/Sega CD)"
arch=('i686' 'x86_64' 'arm' 'armv6h')
url="https://github.com/libretro/Genesis-Plus-GX"
license=('custom')
makedepends=('git')
conflicts=('libretro-super-git')
source=('git://github.com/libretro/Genesis-Plus-GX.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-|.|g')_$(git describe --always | sed 's/-/_/g')"
}

build() {
  cd $_gitname
  make -f Makefile.libretro
}

package()
{
  mkdir -p $pkgdir/usr/lib/libretro
  install -v -m644 $srcdir/$_gitname/genesis_plus_gx_libretro.so $pkgdir/usr/lib/libretro/libretro-genplus.so
}