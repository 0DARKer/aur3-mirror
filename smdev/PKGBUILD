# Maintainer: Jack L. Frost <fbt@fleshless.org>
pkgname=smdev
pkgver=0.2.2
pkgrel=1
pkgdesc="Suckless mdev"
arch=( 'i686' 'x86_64' )
url="http://git.2f30.org/smdev/"
license=( 'MIT/X' )
options=( 'strip' )
groups=( 'spark' )
source=( "http://git.suckless.org/smdev/snapshot/smdev-${pkgver}.zip" 'config.h' )
md5sums=('bf49344d010296f652f9a93b0b5095ff'
         '0191043afe05bdb55b905ec4b8d50863')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}

