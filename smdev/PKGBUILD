# Maintainer: Jack L. Frost <fbt@fleshless.org>
pkgname=smdev
pkgver=0.2.1
pkgrel=1
pkgdesc="Suckless mdev"
arch=( 'i686' 'x86_64' )
url="http://git.2f30.org/smdev/"
license=( 'MIT/X' )
options=( 'strip' )
groups=( 'spark' )
source=( "http://git.2f30.org/smdev/snapshot/smdev-${pkgver}.tar.gz" 'config.h' )
md5sums=('e49fe64f198845a3fee7ce4e979e1916'
         '26b357e46bfbe3fa2c1a036fd5ee5ec7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}

