# Maintainer: Jack L. Frost <fbt@fleshless.org>
pkgname=smdev
pkgver=0.2
pkgrel=8
pkgdesc="Suckless mdev"
arch=( 'i686' 'x86_64' )
url="http://git.2f30.org/smdev/"
license=( 'MIT/X' )
options=( 'strip' )
groups=( 'spark' )
source=( 'http://git.2f30.org/smdev/snapshot/smdev-0.2.tar.gz' 'config.h' 'smdev-0.2-chmod.patch' )
md5sums=('96a2737317f17790fa274b9a7461d277'
         '26b357e46bfbe3fa2c1a036fd5ee5ec7'
         '69773a8b98d96cb5eaf359c3a16bb1fe')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  cp -v ../config.h ./
  patch -p0 < ../smdev-0.2-chmod.patch
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}

