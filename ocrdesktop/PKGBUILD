pkgname=ocrdesktop
pkgver=0.8.1
pkgrel=2
pkgdesc="OCR the current desktop and present it to the user"
arch=('any')
url="http://www.crivatec.de"
license=('GPL')
groups=()
depends=('python' 'pygtk' 'orca' 'tesseract' 'python-pillow' 'python-tesserwrap')
source=("http://crivatec.de/page/uploads/Downloads/Accessible%20Games/$pkgname-$pkgver.tar.xz")
install='ocrdesktop.install'
md5sums=("45207fb2d53ed41985a56f8d7d4a3b05")

package() {
 cd "${srcdir}/"
  install -Dm755 ocrdesktop.py "$pkgdir/usr/bin/ocrdesktop.py"
}
