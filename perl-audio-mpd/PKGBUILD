pkgname='perl-audio-mpd'
pkgver='1.111200'
pkgrel='1'
pkgdesc="class to talk to MPD (Music Player Daemon) servers"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl-audio-mpd-common' 'perl-getopt-euclid' 'perl-moose' 'perl-moosex-has-sugar' 'perl-moosex-semiaffordanceaccessor' 'perl-proc-daemon')
makedepends=('perl-test-corpus-audio-mpd>=1.092920')
url='http://search.cpan.org/dist/Audio-MPD'
source=('http://search.cpan.org/CPAN/authors/id/J/JQ/JQUELIN/Audio-MPD-1.111200.tar.gz')
md5sums=('5abd3988173b1f5b925b3e0bb56f6f3c')
_distdir="${srcdir}/Audio-MPD-1.111200"

build() {
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'"     \
      PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
      MODULEBUILDRC=/dev/null

    cd "$_distdir"
    /usr/bin/perl Build.PL
    /usr/bin/perl Build
  )
}

check() {
  cd "$_distdir"
  ( export PERL_MM_USE_DEFAULT=1 PERL5LIB=""
    /usr/bin/perl Build test
  )
}

package() {
  cd "$_distdir"
  /usr/bin/perl Build install
  find "$pkgdir" -name .packlist -o -name perllocal.pod -delete
}

