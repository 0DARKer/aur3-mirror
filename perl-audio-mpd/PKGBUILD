pkgdesc="class to talk to MPD (Music Player Daemon) servers"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.010' 'perl-audio-mpd-common' 'perl-getopt-euclid' 'perl-moose' 'perl-moosex-has-sugar' 'perl-moosex-semiaffordanceaccessor' 'perl-proc-daemon')
makedepends=('perl-test-corpus-audio-mpd>=1.092920')
url='http://search.cpan.org/dist/Audio-MPD'
source=('http://search.cpan.org/CPAN/authors/id/J/JQ/JQUELIN/Audio-MPD-1.112670.tar.gz')
