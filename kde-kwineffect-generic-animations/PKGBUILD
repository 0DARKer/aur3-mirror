pkgname=kde-kwineffect-generic-animations
_name=generic_animations-kwin-fx
pkgver=0.2
pkgrel=1
pkgdesc="A generic animation effect for Kwin."
arch=('i686' 'x86_64')
url="http://kde-apps.org/content/show.php/Generic+Animations+%28BeGeneric+%3B-%29?content=145674&PHPSESSID=0ecd9ebff4ac9bd960afbd944105299c"
depends=('kdebase-workspace>=4.7.0')
makedepends=('cmake' 'automoc4')
source=("http://kde-apps.org/CONTENT/content-files/145674-$_name-$pkgver.txz")
license=('GPL')
md5sums=('4962d6b0a21eb5ae15c0c290dd8a3f43')

build(){
  cd $srcdir/$_name
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` -DCMAKE_BUILD_TYPE=Release .
  make || return 1
}
package(){
  cd $srcdir/$_name
  make DESTDIR=$pkgdir install
}
