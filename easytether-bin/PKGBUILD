# Maintainer: Dan Serban

_real_name=easytether
pkgname=${_real_name}-bin
_real_ver=0.7.1
pkgver=${_real_ver}.beta
pkgrel=1
pkgdesc="Internet access via smartphone"
arch=(i686 x86_64)
url=http://www.mobile-stream.com/easytether/drivers.html
license=(unknown:freeware)
depends=(glibc libusb udev)
_filearch=i386
[ "${CARCH}" == "x86_64" ] && _filearch=amd64
_deb_ver=3

build()
{
  _url_prefix="http://www.mobile-stream.com/beta"
  _file="${_real_name}_${_real_ver}-${_deb_ver}_${_filearch}.deb"
  wget "${_url_prefix}/${_file}"
  bsdtar -xf "${_file}" data.tar.gz
  bsdtar -xf data.tar.gz
  rm data.tar.gz
}

package()
{
  mv lib usr "${pkgdir}"/
}

