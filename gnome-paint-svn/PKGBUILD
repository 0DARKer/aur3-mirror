# Contributor: Berseker <berseker86 at gmail dot com>
pkgname=gnome-paint-svn
pkgver=69
pkgrel=2
pkgdesc="Gnome-paint is a simple, easy to use paint program for GNOME. It is inspired on MS-Paint. SVN Version"
arch=('i686' 'x86_64')
url="http://code.google.com/p/gnome-paint/"
license=('GPL')
depends=('gtk2' 'intltool')
makedepends=('subversion')
provides=('gnome-paint')
conflicts=('gnome-paint')
replaces=('gnome-paint')

_svntrunk=http://gnome-paint.googlecode.com/svn/trunk/
_svnmod=gnome-paint

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD
  #
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
