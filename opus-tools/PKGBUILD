pkgname=opus-tools
pkgver=0.1.4
pkgrel=2
pkgdesc="Opus-tools is a collection of tools for working with opus files."
arch=('i686' 'x86_64')
url="http://wiki.xiph.org/Opus-tools"
license=(BSD)
depends=(opus)
source=(http://downloads.xiph.org/releases/opus/opus-tools-$pkgver.tar.gz)

build(){
  cd "$srcdir/opus-tools-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/opus-tools-$pkgver"
  make DESTDIR=$pkgdir install
} 
sha512sums=('8539ef63ccc467d53d7988a4eb819e9bcb0c981f9e170d55dac13c60a42160f650905c5c8979b3f250cf770915be4351c4170d4d73ea6d110e5296dbda5679a9')
