# Maintainer: firstvirus92 <firstvirus92 at gmail dot com>

pkgname=lxmenu-data-git
pkgver=0.0.0.0
pkgrel=1
pkgdesc="freedesktop.org application menu definition files"
arch=("i686" "x86_64")
url="http://lxde.org/"
license=("GPL2")
makedepends=("intltool")
provides=("lxmenu-data")
conflicts=("lxmenu-data")
source=("$pkgname::git+https://github.com/lxde/lxmenu-data.git")
sha512sums=("SKIP")

pkgver() {
  date +%Y.%m.%d
}

build() {
  cd $pkgname
  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}