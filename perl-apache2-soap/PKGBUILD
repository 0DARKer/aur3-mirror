pkgname=perl-apache2-soap
pkgver=0.72
pkgrel=2
pkgdesc="Apache2::SOAP - mod_perl-2 SOAP server"
url="http://search.cpan.org/~rkobes/Apache2-SOAP-0.72/lib/Apache2/SOAP.pm"
license="GPL"
depends=('mod_perl' 'perl-soap-lite')
arch=('i686' 'x86_64')
options=('noemptydirs')

source=(http://search.cpan.org/CPAN/authors/id/R/RK/RKOBES/Apache2-SOAP-$pkgver.tar.gz)
md5sums=('8e86fa49b4226a16877e98eb1fe3a98a')

build() {
  cd $startdir/src/Apache2-SOAP-$pkgver
  /usr/bin/perl Makefile.PL
  make
  make DESTDIR=$startdir/pkg install

  /usr/bin/find $startdir/pkg -name '.packlist' -exec rm '{}' \;
  /usr/bin/find $startdir/pkg -name 'perllocal.pod' -exec rm '{}' \;
}
