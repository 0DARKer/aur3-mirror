# Maintainer: Anthony Cornehl <accornehl[at]gmail[dot]com>
# https://github.com/twinshadow/abs-ofed
pkgname=libmlx4
pkgver=1.0.2
pkgrel=2
pkgdesc="Userspace driver for Mellanox ConnectX InfiniBand HCAs"
groups=('ofed')
url="http://www.openfabrics.org"
arch=('x86_64' 'i686')
license=('GPL2' 'custom:"Open Fabrics Alliance BSD"')
depends=('libibverbs')
source=("http://www.openfabrics.org/downloads/mlx4/${pkgname}-${pkgver}.tar.gz")
md5sums=('32c83ffb8ab3c78405b18f129655f707')
sha512sums=('dcd9b4f4f73df45a7831ed8bf5be6a5097c5a5c19bad8c50cfb93a5b79cb182f878f31706de384562f945cad47b95191756e02d9f9b2d3f6c74f5dbae43b15bf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" sysconfdir="/etc" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
