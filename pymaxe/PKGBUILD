pkgname=pymaxe
pkgver=0.41
pkgrel=1
pkgdesc="Pymaxe is an open-source application that allow downloading music from several sites. By default, downloading from Trilulilu, YouTube, KOHit and MusicDumper is supported."
arch=('any')
url="http://pymaxe.com"
license=('GPLv3')
depends=('pygtk' 'python2')
optdepends=('ffmpeg')
source=(http://www.pymaxe.com/files/latest/$pkgname.tar.gz)
noextract=($pkgname.deb)
md5sums=('288b3ccfed463400a2b3c0a564ca21ff')

build() {
    mkdir -p "$pkgdir/usr/"{share,bin}
    tar -xvf "$pkgname.tar.gz" -C "$pkgdir/usr/share/"
    cat <<EOF > "$pkgdir/usr/bin/$pkgname"
#!/bin/sh

cd /usr/share/pymaxe; python2 pymaxe.py
EOF
    chmod 755 "$pkgdir/usr/bin/$pkgname"
}
