pkgname=pymaxe
pkgver=0.39
pkgrel=2
pkgdesc="Pymaxe is an open-source application that allow downloading music from several sites. By default, downloading from Trilulilu, YouTube, KOHit and MusicDumper is supported."
arch=('any')
url="http://pymaxe.com"
license=('GPLv3')
depends=('pygtk' 'python2')
optdepends=('ffmpeg')
source=(http://dl.dropbox.com/u/1191805/$pkgname/latest/$pkgname.deb)
noextract=($pkgname.deb)
md5sums=('887b4ac879ecbf65ddfa4de7a2450b2a')
 
build() {
    ar x $pkgname.deb
    tar -xvf data.tar.gz -C $pkgdir
    chmod 755 -R $pkgdir
    perl -pi -e 's/\.\//python2 /' "$pkgdir/usr/bin/$pkgname"
}
