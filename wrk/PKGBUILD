# Maintainer: Pierre Carrier <pierre@gcarrier.fr>
pkgname=wrk
pkgver=1.0.0
pkgrel=1
pkgdesc="Modern HTTP benchmarking tool"
arch=(i686 x86_64)
url=https://github.com/wg/wrk
license=(Apache)
depends=()
makedepends=()
source=(https://github.com/wg/$pkgname/archive/$pkgver.tar.gz)
md5sums=(06944edc4dc74e494d28f7880a2995e5)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 wrk "$pkgdir/usr/bin/wrk"
}

