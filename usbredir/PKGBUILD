# Maintainer: Stefano Facchini <stefano.facchini@gmail.com>
pkgname=usbredir
pkgver=0.4.3
pkgrel=2
pkgdesc="USB traffic redirection protocol"
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/~jwrdegoede/usbredir/"
license=('GPL2' 'LGPL2.1')
depends=('libusb')
options=(!libtool)
source=(http://spice-space.org/download/usbredir/$pkgname-$pkgver.tar.bz2)
sha256sums=('f2cbcc67926c2275837143485407a57cf4c3fda52d199cbb58f73d57a6988f9c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
