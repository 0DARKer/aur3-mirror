# Maintainer: Stefano Facchini <stefano.facchini@gmail.com>
pkgname=usbredir
pkgver=0.3.3
pkgrel=1
pkgdesc="USB traffic redirection protocol"
arch=('i686' 'x86_64')
url="http://cgit.freedesktop.org/~jwrdegoede/usbredir/"
license=('GPL2' 'LGPL2.1')
depends=('libusb-testing')
#source=(http://people.fedoraproject.org/~jwrdegoede/$pkgname-$pkgver.tar.bz2)
source=(http://spice-space.org/download/usbredir/$pkgname-$pkgver.tar.bz2)
sha256sums=('8eb2b8095c9bbcbc1f9bd16fa8950079f06cdeffeab89fccecae7ab676547dcd')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

