# Contributor: Coolaman <coolaman@free.fr>

pkgname=splashy-theme-xfarch
pkgver=1
pkgrel=1
pkgdesc="Splashy theme for ArchLinux"
license=('custom')
arch=('i686' 'x86_64')
url="http://www.archlinux.org"
depends=('splashy')
conflicts=('splashy-themes')
source=(http://coolaman.free.fr/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('6953552f07512ccea41b78e31614a4c3')

build() {
  cd $startdir/src/$pkgname-$pkgver
  
  install -m 644 -D boot.png $startdir/pkg/usr/share/splashy/themes/xfarch/boot.png
  install -m 644 -D shutdown.png $startdir/pkg/usr/share/splashy/themes/xfarch/shutdown.png
  install -m 644 -D theme.xml $startdir/pkg/usr/share/splashy/themes/xfarch/theme.xml
  install -m 644 -D FreeSans.ttf $startdir/pkg/usr/share/splashy/themes/xfarch/FreeSans.ttf
  

  # Install the license.
  install -m 755 -d $startdir/pkg/usr/share/licenses/$pkgname
  install -m 644 -D LICENSE.txt $startdir/pkg/usr/share/licenses/$pkgname/
}
