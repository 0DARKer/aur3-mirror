################# ############NOTE ###################################
# I did not make this extension, I just made the package, for archlinux
####################################################################

pkgname=nautilus-kill-thumbs
pkgver=1.0
pkgrel=1
pkgdesc="Nautilus extension for auto-deleting Windows' Thumb files cache"
arch=('i686')
url="http://gtk-apps.org/content/show.php/Nautilus+Extension+Kill+Thumbs?content=92143"
license=('GPL')
depends=('nautilus' 'cairo-ubuntu')
provides=('nautilus-kill-thumbs')
install=
source=('http://www.kokuban.com.ar/uploads/nautilus/nautilus-kill-thumbs_1.0_i386.deb')
noextract=()
md5sums=('acdc11ede9b60c60a5742d7b2b3e6950') 

build() {
	install -d ${pkgdir}/usr/lib/nautilus/extensions-2.0
	cd $srcdir/
	mkdir data
	ar x *.deb
	tar -xzvf data.tar.gz -C data
	cd $srcdir/data/usr/lib/nautilus/extensions-2.0
  	install -Dm755 libnautilus-kill-thumbs.so $pkgdir/usr/lib/nautilus/extensions-2.0/libnautilus-kill-thumbs.so || return 1
  	
}

