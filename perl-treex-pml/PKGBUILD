# Contributor: Ondrej Kucera <ondrej.kucera@centrum.cz>

pkgname=perl-treex-pml
_realname=Treex-PML
pkgver=2.03
pkgrel=1
pkgdesc="Perl implementation for the Prague Markup Language (PML)"
arch=("any")
url="http://search.cpan.org/~pajas/$_realname/"
license=("GPL" "Artistic")
depends=('perl' 'perl-xml-compacttree' 'perl-pml' 'perl-file-sharedir')

source=(http://search.cpan.org/CPAN/authors/id/P/PA/PAJAS/${_realname}-${pkgver}.tar.gz)
md5sums=('95e6a172d6af8028f35a29ccf289385e')
options=(!emptydirs)

build() {
  cd ${startdir}/src/${_realname}-${pkgver}
  # Install module into the vendor directories.
  perl Makefile.PL INSTALLDIRS=vendor || return 1
  make || return 1
  make test || return 1
  make DESTDIR=${startdir}/pkg install

  # Remove .packlist and perllocal.pod files.
  find ${startdir}/pkg -name '.packlist' -delete
  find ${startdir}/pkg -name 'perllocal.pod' -delete
}
