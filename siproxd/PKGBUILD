pkgname=siproxd
pkgver=0.7.1
pkgrel=1
pkgdesc="A simple SIP proxy."
arch=('i686' 'x86_64')
url="http://siproxd.sourceforge.net/"
license=('GPL')
groups=()
depends=(libosip2)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/siproxd.conf' 'etc/siproxd_passwd.cfg')
options=()
install=
source=("http://kent.dl.sourceforge.net/sourceforge/${pkgname}/${pkgname}-${pkgver}.tar.gz")
noextract=()
md5sums=('45e5a44803181e2bf3361d562060c904')

build() {
  cd "$startdir/src/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make DESTDIR="$startdir/pkg" install
}

# vim:set ts=2 sw=2 et:
