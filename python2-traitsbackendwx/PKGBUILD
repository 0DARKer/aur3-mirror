# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>
pkgname=python2-traitsbackendwx
pkgver=3.6.0
_githubtag=f90e923
pkgrel=1
pkgdesc="WxPython backend for Traits and TraitsGUI"
arch=('any')
url="https://github.com/enthought/traitsbackendwx"
license=('BSD')
depends=('python2' 'wxpython>=2.8' 'python2-traits' 'python2-enthoughtbase')
makedepends=('python2-distribute')
provides=('python2-traitsbackend')
conflicts=('python-enthought-traits' 'python2-traitsbackendwx-git' 'python-ets-traits-wx-svn')
options=(!emptydirs)

source=("https://github.com/enthought/traitsbackendwx/tarball/${pkgver}")
md5sums=('197238a90270c4cd4a54255a5d55b68d')

build() {
  cd "$srcdir/enthought-traitsbackendwx-${_githubtag}"

  python2 setup.py install --root="$pkgdir"/ --optimize=1 || return 1
}

