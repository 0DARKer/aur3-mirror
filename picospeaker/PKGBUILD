# Maintainer: Kyle <kyle@gmx.ca>
pkgname=picospeaker
pkgver=0.1
pkgrel=1
pkgdesc="Speak text on the command line using SVox Pico, soundtouch and Sox"
arch=('any')
url="https://github.com/the-kyle/picospeaker"
license=('custom: unlicense')
groups=()
depends=('svox-pico-git' 'soundtouch' 'sox')
source=("https://github.com/downloads/the-kyle/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('9e3c00cc1f3a255cc48680f493644e07')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
  install -Dm644 README $pkgdir/usr/share/doc/$pkgname/README
  install -Dm644 UNLICENSE $pkgdir/usr/share/licenses/$pkgname/UNLICENSE
}

# vim:set ts=2 sw=2 et:
