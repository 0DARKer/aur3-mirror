# Maintener: Deather <deather.jeuxlinux@gmail.com>

pkgname=jtomtom
pkgver="1.1.b78"
pkgrel=1
pkgdesc="Application permettant de mettre les GPSQuickFix et POIs"\
"des radars de votre TomTom."
arch=('i686' 'x86_64')
url="http://jtomtom.sourceforge.net/"
license=('GPLv3' )

source=("http://sourceforge.net/projects/jtomtom/files/jTomtom.jar" "${pkgname}")
md5sums=('f18de3240ce131fec7429d30f22fffa7' '18158733a22cd93b6f0c9efbd3d84404')

build(){
	_install_dir="${pkgdir}/usr/share/java/${pkgname}"
	_bin_dir="${pkgdir}/usr/bin"

	mkdir -p "${_bin_dir}"
	mkdir -p "${_install_dir}"

	mv "jTomtom.jar" "${_install_dir}"
	mv "${pkgname}" "${_bin_dir}"

	chmod 755 "${_bin_dir}/${pkgname}"
}
