# Contributor: Matteo Mattei <matteo.mattei@gmail.com>

pkgname=php-pam
pkgver=1.0.3
pkgrel=1
pkgdesc="This extension provides PAM (Pluggable Authentication Modules) integration in PHP."
arch=('i686' 'x86_64')
url="http://pecl.php.net/package/PAM"
license=('PHP')
depends=('php' 'pam' 'php-pear')
makedepends=('apache' 'autoconf')
install=php-pam.install
source=(http://pecl.php.net/get/pam-${pkgver}.tgz)
md5sums=('2dfd378a76021245050333cd4d49ed96')

build() {
  cd $startdir/src/pam-${pkgver}
  phpize || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make INSTALL_ROOT=${startdir}/pkg install || return 1
}
