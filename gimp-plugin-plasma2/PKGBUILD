# Contributor: TheGrudge <andi.clemens@gmx.net>

pkgname=gimp-plugin-plasma2
pkgver=2.11
pkgrel=2
arch=('i686' 'x86_64')
license=''
pkgdesc="Plasma2 is a heavily improved version of an old Gimp plug-in. It generates cloud-like images known as 'the plasma fractal'"
url="http://trific.ath.cx/software/gimp-plugins/plasma2/"
depends=('gimp')
makedepends=('pkgconfig')
source="http://trific.ath.cx/Ftp//gimp/plasma/plasma2-$pkgver.tar.bz2"
md5sums=('8a4cb3bab1756920ab2dadb4e32b79c5')

build() {
  cd $startdir/src/plasma2-$pkgver
  make || return 1
  make DESTDIR=$startdir/pkg install
}
