pkgname=uqm-remix
pkgver=0
pkgrel=1
arch=(any)
pkgdesc="Optional remix package for Ur-Quan Masters (uqm)"
url="http://sc2.sourceforge.net/downloads.php"
license=(GPL)
depends=(uqm)
source=(http://downloads.sourceforge.net/sourceforge/sc2/uqm-remix-pack{1..3}.zip)
noextract=(uqm-remix-pack{1..3}.zip)
md5sums=('2df402b2951c0187604a81c3997fbb9d'
         'd5a9fb72b369bf5a5dbca3db9f1e1ea3'
         '567bc2d9e3ca067d21170c5ac5538441')

build() { 
  cd $srcdir

  for f in uqm-remix-pack{1..3}.zip
  do
      install -Dm644 $f \
      $pkgdir/usr/share/uqm/content/packages/addons/uqmremix/$f
  done
}
