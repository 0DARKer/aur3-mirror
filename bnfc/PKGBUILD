# Maintainer: Flaviu Tamas <tamas.flaviu@gmail.com>
pkgname=bnfc
pkgver=2.5.0
pkgrel=3
pkgdesc="The BNF Converter is a compiler construction tool generating a compiler front-end from a Labelled BNF grammar. It is currently able to generate C, C++, C#, Haskell, Java, and OCaml, as well as XML representations."
url="http://bnfc.digitalgrammars.com/"
arch=('x86_64' 'i686')
[ $arch = "i686" ] && _realarch="i386"
[ $arch = "x86_64" ] && _realarch="amd64"
license=('GPL2')
depends=('gmp')
optdepends=(
  'ghc: haskell output'
  'happy: haskell output'
  'alex: haskell output'
)
makedepends=()
conflicts=()
replaces=()
backup=()
_filename="${pkgname}-${pkgver}-linux-${_realarch}"
source=("http://bnfc.digitalgrammars.com/download/${_filename}.gz")
[ $arch = "x86_64" ] && md5sums=('fa2f37b79b8b8098bc40d8fc7dcdffb7')
[ $arch = "i686" ] && md5sums=('965a377d6a87ce109c13a244d9f333de')

package() {
  cd "${srcdir}"
  install -Dm755 "${_filename}" "$pkgdir/usr/bin/${pkgname}"
}

# vim:set ts=2 sw=2 et:
