# Maintainer: José Neder <jlneder@gmail.com>
pkgname=tribler
pkgver=5.5.21
pkgrel=1
pkgdesc="A 4th generation file sharing system bittorrent client"
arch=('any')
url="http://www.tribler.org"
license=('MIT')
depends=('python2' 'wxpython' 'python-m2crypto>=0.16' 'python2-apsw')
makedepends=('subversion')
source=("http://dl.tribler.org/tribler_$pkgver-1ubuntu1_all.deb" "tribler.patch")

build() {
  cd "$srcdir"
  ar vx tribler_$pkgver-1ubuntu1_all.deb
  tar -C "$pkgdir" -xvzf data.tar.gz
  cd "$pkgdir"
  patch -p1 -i "$srcdir"/tribler.patch
}
md5sums=('54aa0c8ecdbfa918e49afa2852c11e8f'
         '3ec36c90ddf6dfa1f1c3b02509d4898f')
