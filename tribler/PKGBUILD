pkgname=tribler
pkgver=5.5.7
pkgrel=1
pkgdesc="A 4th generation file sharing system bittorrent client"
arch=('i686' 'x86_64')
url="http://www.tribler.org"
license=('MIT')
depends=('python2' 'openssl' 'swig' 'wxpython' 'python-m2crypto>=0.16' 'python2-apsw')
makedepends=('subversion')
source=("http://www.tribler.org/download/tribler_$pkgver-1ubuntu1_all.deb" "tribler.patch")

build() {
  cd "$srcdir"
  ar vx tribler_$pkgver-1ubuntu1_all.deb
  tar -C "$pkgdir" -xvzf data.tar.gz
  cd "$pkgdir"
  patch -p1 -i "$srcdir"/tribler.patch
}
md5sums=('ff4f36cce323381d094a7bc4f872fff0'
         '3ec36c90ddf6dfa1f1c3b02509d4898f')
