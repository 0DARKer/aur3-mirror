# Maintainer: Can Celasun <dcelasun[at]gmail[dot]com>
pkgname=netsniff-ng
pkgver=0.5.5.0
pkgrel=1
pkgdesc='A high performance Linux network sniffer for packet inspection.'

arch=('i686' 'x86_64')
url='http://netsniff-ng.org/'
license=('GPL2')
source=(http://www.netsniff-ng.org/pub/netsniff-ng/netsniff-ng-${pkgver}.tar.gz)
md5sums=('d92382187518bc0c6b6dfef98100b4be')

build() {
  cd $srcdir/${pkgname}/src
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

