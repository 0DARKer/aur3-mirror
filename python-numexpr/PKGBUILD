# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Sebastien Binet <binet@lblbox>
pkgname=python-numexpr
pkgver=2.0
pkgrel=1
pkgdesc="The numexpr package evaluates multiple-operator array expressions many times faster than NumPy can"
url="http://code.google.com/p/numexpr/"
arch=('i686' 'x86_64')
license=('MIT')
depends=('python2' 'python2-numpy>=1.2')
makedepends=()
backup=()
install=
source=(http://numexpr.googlecode.com/files/numexpr-$pkgver.tar.gz)
md5sums=('7b228fc1e5a2b6be69c1af636e6d8de7')

build() {
  cd $startdir/src/numexpr-$pkgver
  python2 setup.py build || return 1
  python2 setup.py install --prefix=/usr --root=$startdir/pkg || return 1
}