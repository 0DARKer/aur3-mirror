pkgname=libvoikko
pkgver=3.6
pkgrel=3
pkgdesc="A library of free Finnish language tools using Malaga"
arch=('i686' 'x86_64')
url="http://voikko.sourceforge.net"
license=('GPL2')
depends=('hfstospell>=0.2.2')
optdepends=('suomi-malaga-voikko>=1.13-2: Older but more robust backend (recomended)'
	'hfst-zhfst-fi: new spelling backend for Finnish'
	'hfst-zhfst-en: Spelling backend for English'
	'hfst-zhfst-kl: Spelling backend for kalaallisut (Greenlandic)')
makedepends=('python2')
options=(!libtool)
source=(http://downloads.sourceforge.net/voikko/$pkgname-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --enable-hfst --with-dictionary-path=/usr/lib/voikko
  sed 's|python $(srcdir)|python2 $(srcdir)|g' -i src/Makefile
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

md5sums=('690412f69a06a602411af8db565a1330')
