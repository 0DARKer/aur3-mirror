# Maintainer: aion <alex.teorver@gmail.com>
pkgname=uqm-russian
pkgver=1.0.2
pkgrel=1
pkgdesc="Russian addon for 'The Ur-Quan Masters' game"
arch=('any')
url="http://uqm-rus.uvw.ru/"
license=('GPL')
depends=('uqm')
makedepends=('unzip')
source=("http://ftp.debian.org/debian/pool/contrib/u/${pkgname}/${pkgname}_${pkgver}.orig.tar.gz")
md5sums=('652641ab1a0cf9c844eea4ee7e08f41a') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  unzip "russian-$pkgver"
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  install -Dm644 russian.zip "$pkgdir/usr/share/uqm/content/packages/addons/russian/russian.zip"
  install -Dm644 AUTHORS     "$pkgdir/usr/share/doc/$pkgname/AUTHORS"
  install -Dm644 README      "$pkgdir/usr/share/doc/$pkgname/README"
  
}

# vim:set ts=2 sw=2 et:
