# Contributor: Philipp 'TamCore' B. <philipp {at} tamcore {dot} eu>

pkgname=mom
pkgver=4.1.6
pkgrel=1
pkgdesc="OVH Manager 'MoM' for ArchLinux"
url="http://www.ovh.de/kundenbereich/werkzeuge/mom.xml"
license=('unknown')
arch=('i686' 'x86_64')
depends=('qt' 'e2fsprogs' 'fontconfig' 'libsm' 'libxext' 'libxrender' 'gcc-libs' 'bash')
options=()
source=(ftp://ftp.ovh.net/MoM/MoM-${pkgver}.tar.gz mom.desktop mom.xpm)
md5sums=('473833c6d33510e1a3133c574a0b9d29'
         '5be986b12ec1020582cc01bc15c3cfe2'
         '339ef7af508acd58822e3ee8d16920af')

[ "$CARCH" = "x86_64" ] && depends=('qt' 'lib32-e2fsprogs' 'lib32-fontconfig' 'lib32-libsm' 'lib32-libxext' 'lib32-libxrender' 'lib32-gcc-libs' 'bash')

build() {
	mkdir -p $pkgdir/opt $pkgdir/usr/bin $pkgdir/usr/share/pixmaps $pkgdir/usr/share/applications
	mv MoM $pkgdir/opt/MoM
	install -m644 $startdir/mom.xpm $pkgdir/usr/share/pixmaps
	install -m644 $startdir/mom.desktop $pkgdir/usr/share/applications
}
