#	Custom AUR Package Maintainer: Diogo B. <db_eee.at.hotmail.dot.com>

pkgname=lxterminal-gtk3
pkgver=0.1.11
pkgrel=3
pkgdesc="VTE-based terminal emulator (part of LXDE). GTK3 support."
arch=('i686' 'x86_64')
license=('GPL2')
url="http://lxde.org/"
groups=('lxde')
depends=('fontconfig' 'libx11' 'glib2' 'vte3' 'gtk3')
makedepends=('pkgconfig' 'intltool')
provides=('lxterminal=0.1.11')
conflicts=('lxterminal')
source=(http://downloads.sourceforge.net/sourceforge/lxde/lxterminal-${pkgver}.tar.gz)
md5sums=('fd9140b45c0f28d021253c4aeb8c4aea')

build() {
	cd "$srcdir/lxterminal-$pkgver"
	./configure --sysconfdir=/etc --prefix=/usr --enable-gtk3
	make
}

package() {
	cd "$srcdir/lxterminal-$pkgver"
	make DESTDIR="$pkgdir" install
}
