pkgname=voyager
pkgver=0.2.2
pkgrel=1
pkgdesc="Image browser in Vala and GTK3"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl"
license=('GPL')
depends=('gtk3' 'dconf' 'desktop-file-utils' 'hicolor-icon-theme')
makedepends=('vala')
optdepends=('wpset: support for setting wallpaper')
source=('voyager-0.2.2.tar.xz')
md5sums=('9bdcb5077c2ddb7ec873d543d69ed7f4')
install=$pkgname.install

package() {
  cd "$srcdir"/$pkgname-$pkgver
  make DESTDIR="$pkgdir/" install
}
