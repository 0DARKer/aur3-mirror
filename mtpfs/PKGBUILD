pkgname=mtpfs
pkgver=0.9
pkgrel=4
pkgdesc="A FUSE filesystem that supports reading and writing from any MTP device"
arch=('i686' 'x86_64')
url="http://www.adebenham.com/mtpfs/"
license=('GPL3')
depends=('libmtp>=0.3.0' 'glib2' 'libid3tag' 'fuse' 'libmad')
makedepends=('pkg-config')
source=(http://www.adebenham.com/debian/${pkgname}_${pkgver}.orig.tar.gz)
md5sums=('6736f24c3d4a3d3b4e9e545398557de9')

build() {
  cd "$srcdir/$pkgname-$pkgver.orig"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver.orig"
  make DESTDIR="$pkgdir" install
}
