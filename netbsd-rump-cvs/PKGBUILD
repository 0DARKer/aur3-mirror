# Mantainer Jens Staal <staal1978@gmail.com>

pkgname=netbsd-rump-cvs
pkgver=20130205
pkgrel=2
pkgdesc="The NetBSD Anykernel"
arch=('i686' 'x86_64')
url="http://www.netbsd.org/docs/rump/"
license=('BSD')
#depends=('')
makedepends=('cvs' 'git' 'zlib')
provides=('rump')


_cvsroot=":pserver:anoncvs@anoncvs.netbsd.org:/cvsroot"
_cvsmod="src"

_gitroot=('https://github.com/anttikantee/buildrump.sh')
_gitname=('buildrump-scripts')


build() {
  cd "$srcdir"
  msg "getting the latest buildrump scripts"
  
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull $_gitroot
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi
  
  msg "Connecting to NetBSD CVS server...."
#instead of checking out the whole NetBSD src tree of about 1.3 GiB.
#the minimal checkout for rump building ~ 205 MiB.
#The script below first checks for a checked out directory and then either fetches it or updates it
#important to do in this order since one otherwise needs to redo src every time.
cd $srcdir

    if [ -d $_cvsmod ]; then
    export CVSROOT=$_cvsroot
      $SHELL $srcdir/$_gitname/listsrcdirs | xargs cvs up
    else
      $SHELL $srcdir/$_gitname/listsrcdirs | xargs cvs -z3 -d $_cvsroot co -P
    fi


  msg "CVS checkout done or server timeout"
  
  msg "Set up build directory to mantain pristine cvs"
  rm -rf "$srcdir/build"
  mkdir -p $srcdir/build
  
  msg "Move latest build script into build directory"
  cp $srcdir/$_gitname/buildrump.sh $srcdir/build/buildrump.sh
    
  chmod +x $srcdir/build/buildrump.sh
  
  cd $srcdir/build
  ./buildrump.sh -s $srcdir/src
}

package() {

  #no namespace conficts with systems packages, so we install stuff at the standard locations
  msg "make destination directories"
  mkdir -p $pkgdir/usr/{lib,include/rump,share/{licenses/rump,man/{man0,man3,man7}}}

  msg "copy rump binaries, libraries, headers etc to package"
  cd $srcdir/build/rump
  install -m0644 man/*.0 $pkgdir/usr/share/man/man0/
  install -m0644 man/*.3 $pkgdir/usr/share/man/man3/
  install -m0644 man/*.7 $pkgdir/usr/share/man/man7/
  
  install -m0644 include/rump/*.h $pkgdir/usr/include/rump/
  
  #mixed permissions symlinks and libraries... what would be best?
  #install also fails to keep symlinks as symlinks 
  cp -r lib $pkgdir/usr/

  #no special license file found, so the licenses directory left empty
}
