# Mantainer Jens Staal <staal1978@gmail.com>

pkgname=netbsd-rump-cvs
pkgver=20130518
pkgrel=1
pkgdesc="The NetBSD Anykernel"
arch=('i686' 'x86_64')
url="http://www.netbsd.org/docs/rump/"
license=('BSD')
#depends=('')
makedepends=('cvs' 'git' 'zlib')
provides=('rump')

_gitroot=('https://github.com/anttikantee/buildrump.sh')
_gitname=('buildrump-scripts')


build() {
  msg "getting the latest buildrump scripts"
  
  cd "$srcdir"
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull $_gitroot
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  
  msg "Set up build directory to mantain pristine cvs"
  rm -rf "$srcdir/build"
  mkdir -p $srcdir/build
  
  msg "Move latest build script into build directory"
  cp -r $srcdir/$_gitname/* $srcdir/build
  cd $srcdir/build
  
  ./buildrump.sh checkout fullbuild
}

package() {

  #no namespace conficts with systems packages, so we install stuff at the standard locations
  msg "make destination directories"
  mkdir -p $pkgdir/usr/{lib,include/rump,share/{licenses/rump,man/man{0,3,7}}}

  msg "copy rump binaries, libraries, headers etc to package"
  cd $srcdir/build/rump
  cp -r  share/man/* $pkgdir/usr/share/man/
  
  install -m0644 include/rump/*.h $pkgdir/usr/include/rump/
  
  #mixed permissions symlinks and libraries... what would be best?
  #install also fails to keep symlinks as symlinks 
  cp -r lib $pkgdir/usr/

  #no special license file found, so the licenses directory left empty
}
