# Contributor: John Gerritse <reaphsharc@gmail.com>
pkgname=celtx-bin
pkgver=2.7
pkgrel=1
pkgdesc="Celtx is the world's first fully integrated solution for media pre-production and collaboration. (binary version)"
arch=(i686)
url="http://celtx.com/"
license=('CePL')
depends=()
options=('!strip')
conflicts=('celtx')
source=(http://download.celtx.com/${pkgver}/Celtx-${pkgver}.tar.bz2 'CePL-1.3.txt' 'celtx.desktop')
md5sums=('288e156ffbd2a9bc9b91c613a3ca977f'
         '998912d308020615adb0bcf22b845970'
         'c64e4173b5af998ffa158d3c085b996e')

build() {
  # Copy binaries
  cd "${srcdir}/celtx"
  mkdir -p ${pkgdir}/opt/celtx
  cp -a ${srcdir}/celtx/* ${pkgdir}/opt/celtx/
  chmod a+x ${pkgdir}/opt/celtx/celtx
  chmod a+x ${pkgdir}/opt/celtx/celtx-bin

  # Install extra files
  install -D -m644 "${srcdir}/CePL-1.3.txt" "${pkgdir}/usr/share/licenses/${pkgname}/license.txt" || return 1
  install -D -m644 "${srcdir}/celtx.desktop" "${pkgdir}/usr/share/applications/celtx.desktop" || return 1
}

# vim:set ts=2 sw=2 et:
