# Maintainer: Xavier Devlamynck <magicrhesus@ouranos.be>

pkgname=libxfce4util-devel
pkgver=4.7.5
pkgrel=1
pkgdesc="Basic utility non-GUI functions for Xfce (Development Version)"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4-devel')
depends=("glib2>=2.18.4")
makedepends=('pkgconfig' 'xfce4-dev-tools-devel')
conflicts=('libxfce4util' 'libxfce4util-git')
replaces=('libxfce4util' 'libxfce4util-git')
provides=("libxfce4util-devel=${pkgver}")
options=('!libtool')
source=(http://archive.xfce.org/src/xfce/libxfce4util/4.7/libxfce4util-${pkgver}.tar.bz2)
md5sums=('2ac4bed1e295791a07d2e8f95130087d')

build() {
  cd ${srcdir}/libxfce4util-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static
  make
}

package() {
	cd ${srcdir}/libxfce4util-${pkgver}
	make DESTDIR=${pkgdir} install
}
