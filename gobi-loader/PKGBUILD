# Maintainer: Lex Rivera aka x-demon <aur@x-demon.org>

pkgname=gobi-loader
pkgver=0.7
pkgrel=1
pkgdesc="Loader for gobi wwan chipset firmware"
depends=()
source=("http://www.codon.org.uk/~mjg59/gobi_loader/download/gobi_loader-${pkgver}.tar.gz")
url="http://www.codon.org.uk/~mjg59/gobi_loader"
arch=('i686' 'x86_64')
license=('GPL')

md5sums=('c3aca13541be3b29e3700149256aadb6')

build() {
  cd ${srcdir}/gobi_loader-${pkgver}
  gcc -Wall gobi_loader.c -o gobi_loader
  install -D -m744 gobi_loader ${pkgdir}/lib/udev/gobi_loader
  install -D -m644 60-gobi.rules ${pkgdir}/etc/udev/rules.d/60-gobi.rules
}
