pkgname=setpwc
pkgver=1.2
pkgrel=1
pkgdesc="Set various aspects of Philips (and compatible) webcams."
url="http://www.vanheusden.com/setpwc/"
license=""
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
arch=('i686')
install=
source=(http://www.vanheusden.com/$pkgname/$pkgname-$pkgver.tgz)
md5sums=('1bc721cdfcbac24027e2afc93685d29f')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  #make DESTDIR=$startdir/pkg install  #Makefile has hardcoded destination
  
  #We will copy the binary over manually - since it is trivial to do.
  mkdir -p $startdir/pkg/usr/bin
  cp setpwc $startdir/pkg/usr/bin
}
