# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=kpacupdate
pkgver=0.1
pkgrel=1
pkgdesc="A cron job which displays the number of outdated packages using kdialog"
url="http://www.archlinux.org"
arch=('any')
license=('GPL3')
depends=('kdebase-kdialog' 'cron')
source=('kpacupdate')
md5sums=('da95f43f156e04deab16b44673b7449e')

package() {
  cd ${srcdir}

  # Install the cron job
  install -Dm755 ${srcdir}/${pkgname} \
    ${pkgdir}/etc/cron.hourly/${pkgname}
}
