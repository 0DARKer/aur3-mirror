#Contributor: dunkelstern <dunkelstern@kdemod.ath.cx>

pkgname=kpacupdate
pkgver=0.2.1
pkgrel=1
pkgdesc="Pacman update notification tool for the KDE system tray."
url="http://kdemod.ath.cx/"
license="GPL"
depends=('kdebase' 'wget')
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://kdemod.ath.cx/repo/source-data/sources/$pkgname-$pkgver.tar.bz2)
arch=('i686' 'x86_64')
	
md5sums=('9e96d67b96a18bda7bf7d72f950c1836')

build() {
	cd $startdir/src/$pkgname-$pkgver
	./configure --prefix=`kde-config --prefix`
        make || return 1
        make DESTDIR=$startdir/pkg install
	install -D -m 644 $startdir/src/$pkgname-$pkgver/src/pacman-updates.png $startdir/pkg/opt/kde/share/icons/default.kde/22x22/apps/pacman-updates.png
	install -D -m 644 $startdir/src/$pkgname-$pkgver/src/pacman-uptodate.png $startdir/pkg/opt/kde/share/icons/default.kde/22x22/apps/pacman-uptodate.png
}
