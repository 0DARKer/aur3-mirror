pkgname=genchemlab
pkgver=1.0
pkgrel=1
pkgdesc="General Chemistry Lab Simulator (GenChemLab)"
url="http://genchemlab.sourceforge.net/"
licence="GPL"
depends=('mesa' 'mesa-apps' 'qt')
source=("http://kent.dl.sourceforge.net/sourceforge/genchemlab/$pkgname-$pkgver.tgz")
md5sums=('ef364cff3f3e2dba4c62a5d1a0084bae')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install

}

