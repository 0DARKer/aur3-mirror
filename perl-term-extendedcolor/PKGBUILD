# CPAN Name  : Term-ExtendedColor
# Maintainer: Magnus Woldrich <magnus@trapd00r.se>

pkgname='perl-term-extendedcolor'
pkgver="0.183"
pkgrel='1'
pkgdesc="Like Term::ANSIColor, but for the extended colorset"
arch=('i686' 'x86_64')
url='http://search.cpan.org/dist/Term-ExtendedColor'
license=('PerlArtistic' 'GPL')
#depends=('ncurses>=5.7' 'perl' 'readline>=6.1.002')


options=('!emptydirs')

source=('http://search.cpan.org/CPAN/authors/id/W/WO/WOLDRICH/Term-ExtendedColor-0.183.tar.gz')
md5sums=('581dc857ac53b78180925740269a8ae1')

build() {
  DIST_DIR="${srcdir}/Term-ExtendedColor-0.183"

  {
	  cd "$DIST_DIR" &&
    PERL_MM_USE_DEFAULT=1 perl Makefile.PL &&
    make &&
    make test &&
    make DESTDIR="$pkgdir" install;
  } || return 1;

}

