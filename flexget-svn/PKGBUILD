# Contributor : Chris Baker <baker.chris.3@gmail.com>
pkgname=flexget-svn
pkgver=1322
pkgrel=1
pkgdesc="Multipurpose automation tool for content like torrents, nzbs, podcasts, comics, etc"
arch=('i686' 'x86_64')
url="http://flexget.com/"
depends=('python' 'python-yaml' 'python-feedparser' 'python-sqlalchemy' 'python-html5lib' \
         'python-googlechart' 'beautiful-soup' 'pynzb')
makedepends=('subversion')
provides=('flexget')
conflicts=('flexget')
license=('MIT')
source=(flexget)
md5sums=('5e2f6873d012628efcd39536710c4ff9')
_svntrunk=http://svn.flexget.com/trunk
_svnmod=trunk

build() {
  cd $srcdir

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi

  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  
  mkdir -p $pkgdir/usr/lib/python2.6/site-packages/
  cp -R $srcdir/trunk/flexget $pkgdir/usr/lib/python2.6/site-packages/
  install -D -m755 $srcdir/flexget $pkgdir/usr/bin/flexget
  cd $pkgdir/usr/lib/python2.6/site-packages/
  rm -rf `find . -type d -name .svn`
  python -c "import compileall; compileall.compile_dir(\".\", force=1)" || return 1
}

