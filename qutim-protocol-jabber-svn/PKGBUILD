# Contributor: Borislav Gerassimov (slimmer) <borislavba (at) gmail.com>
pkgname=qutim-protocol-jabber-svn
pkgver=431
pkgrel=1
pkgdesc="Adds support for the Jabber (GoogleTalk) protocol to Qutim. SVN version"
arch=('i686' 'x86_64')
url="http://qutim.org"
license=('GPL')
depends=('qutim-svn' 'openssl' 'gnutls' 'libidn' 'zlib')
makedepends=('subversion' 'gcc' 'make' 'cmake')
provides=('qutim-plugin-jabber-svn')
replaces=('qutim-plugin-jabber-svn')
conflicts=('qutim-plugin-jabber-svn')

_svnmod=jabber
_svntrunk=http://qutim.org/svn/$_svnmod/

build() {
msg "Downloading from $_svntrunk ..."
  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  msg2 "SVN checkout done or server timeout"

msg "Creating temporary build directory..."
  rm -rf $_svnmod-build
  cp -r $_svnmod/trunk $_svnmod-build
  cd $_svnmod-build

msg "Building and installing..."
  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DGNUTLS=1 -DOpenSSL=1 || return 1
  make || return 1

  cd $srcdir
  install -Dm 644 $_svnmod-build/libjabber.so $pkgdir/usr/lib/qutim/libjabber.so || return 1

msg "Removing temporary files..."
  rm -rf $_svnmod-build
}
