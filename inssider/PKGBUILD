# Contributor: Vladimir Chizhov <jagoterr@gmail.com>
pkgname=inssider
pkgver=0.1.0.0111
pkgrel=1
pkgdesc="Wi-Fi scanner"
arch=('i686' 'x86_64')
depends=('gtk-sharp-2')
url="http://www.metageek.net/products/inssider/"
license="Apache"
makedepends=('binutils')

if [ $CARCH == 'i686' ]; then
  source=("https://github.com/downloads/metageek-llc/inSSIDer-2-Cross-Platform/inssider_0.1.0.0111_i386.deb") 
  md5sums=('e753b46daa716f1ba90be56c860074bd')
elif [ $CARCH == 'x86_64' ]; then
  source=("https://github.com/downloads/metageek-llc/inSSIDer-2-Cross-Platform/inssider_0.1.0.0111_amd64.deb")
  md5sums=('2bd387f095d85734d31a89b3f5bff3b1')
fi


package() {
  cd $srcdir
  ar x ${pkgname}_*
  tar xvf data.tar.gz
  cp -R usr $pkgdir
  mkdir $pkgdir/usr/bin
  cd  $pkgdir/usr/bin
  ln -s ../share/inssider/inssider.sh inssider
}

