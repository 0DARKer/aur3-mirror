pkgname=punes
pkgver=0.56
pkgrel=1
epoch=
pkgdesc="Nintendo Entertaiment System emulator"
arch=("i686")
url="http://nesdev.parodius.com/bbs/viewtopic.php?t=6928"
license=('unknown')
groups=()
depends=('sdl' 'gtk2')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("http://dl.dropbox.com/u/21595068/punes.32bit.tar.gz" "punes.desktop" "punes.png")
noextract=()
md5sums=('ee9c60c39ec9fc53960582fc418fb214'
         '6da2f972cff7e886da25f53a0523ad82'
         '2dedec3df0df318df4df835eb90921e6')

package() {
  cd "${srcdir}"
  install -Dm755 punes32 "${pkgdir}/usr/bin/punes32"
  install -Dm644 "${srcdir}/punes.desktop" "${pkgdir}/usr/share/applications/punes.desktop"
  install -Dm644 "${srcdir}/punes.png" "${pkgdir}/usr/share/pixmaps/punes.png"
}

