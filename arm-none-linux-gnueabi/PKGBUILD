pkgname=arm-none-linux-gnueabi
pkgver=2012.09.64
_epoch=1
pkgrel=1
pkgdesc="Sourcery CodeBench Lite for ARM GNU/Linux"
arch=('i686' 'x86_64')
url="http://www.mentor.com/embedded-software/sourcery-tools/sourcery-codebench/editions/lite-edition/"
license=('custom')
conflicts=('arm-none-eabi')
options=(!strip)
source=("https://sourcery.mentor.com/GNUToolchain/package10931/public/arm-none-linux-gnueabi/arm-2012.09-64-arm-none-linux-gnueabi-i686-pc-linux-gnu.tar.bz2")
md5sums=('b5c21a5b546a27912c9f7fd8ac9b4729')

package() {
	cd $srcdir/arm-2012.09
	mkdir -p $pkgdir/usr
	cp -a * $pkgdir/usr
	mkdir -p $pkgdir/usr/share/licenses/arm-none-linux-gnueabi
	cp $srcdir/arm-2012.09/share/doc/arm-arm-none-linux-gnueabi/LICENSE.txt $pkgdir/usr/share/licenses/arm-none-linux-gnueabi
}
