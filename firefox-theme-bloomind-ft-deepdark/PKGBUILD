# Maintainer: Tianjiao Yin <ytj000+aur@gmail.com>

_fileid=134805
_plugin_id=295337
pkgname=firefox-theme-bloomind-ft-deepdark
pkgdesc="Smooth dark theme for Firefox."
pkgver=2.6.6
pkgrel=1
arch=('any')
url="https://addons.mozilla.org/firefox/addon/$_plugin_id"
depends=("firefox>=8.0" "firefox<=10.0")
license=('custom')
source=("https://addons.mozilla.org/firefox/downloads/file/${_fileid}/bloomind_ft_deepdark_2-${pkgver}-fx-linux.jar")
md5sums=('c5ea164d9cb9e1fbff34accc2002f056')

build() {
  cd $srcdir
  emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf) || return 1
  local dstdir=$pkgdir/usr/lib/firefox/extensions/${emid}
  install -d $dstdir
  #sed -i 's#<em:maxVersion>.*</em:maxVersion>#<em:maxVersion>10.*</em:maxVersion>#' install.rdf
  mv * $dstdir
}
