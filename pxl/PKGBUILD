pkgname=pxl
pkgver=3.0.1
pkgrel=1
arch=('i686' 'x86_64')
license=('LGPL')
pkgdesc="Physics Extension Library"
depends=('python2' 'zlib' 'expat')
makedepends=('swig' 'cmake')
url="http://pxl.sourceforge.net"
install=
backup=
source=(http://downloads.sourceforge.net/project/pxl/PXL/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz)

build() {
  cd $srcdir/${pkgname}-${pkgver}
  cmake . -DPYTHON_EXECUTABLE=`which python2` -DENABLETESTING=OFF -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $srcdir/${pkgname}-${pkgver}
  make DESTDIR=$pkgdir install
}

md5sums=('a44fcf6541ba80eccb47b4f90822928e')
