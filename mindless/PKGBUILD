# Contributor: Caelyl <caelyl@gmail.com>
pkgname=mindless
pkgver=1.6
pkgrel=2
pkgdesc="A virtual tabletop for trading card games like Magic: The Gathering."
arch=('i686')
url="http://mindless.sourceforge.net"
license=('GPL')
depends=('gtk2')
install=('.INSTALL')
source=(http://downloads.sourceforge.net/mindless/$pkgname-$pkgver.tar.gz
	Makefile.diff
	.INSTALL
	mtgspoiler
	mindlessrc)
md5sums=('24304be2f71340a07149fcd5b4791eb1'
         '40439b442be5db696370b10e16dc72c2'
         '4e47b912c11acaa002b972f6c51246b3'
         'bed47113b4fbc721d487d396e3a9ee49'
         'd2c8a8897fd5ca1a5f29c539e8d52999')

build() {
  cd "$startdir/src"
  patch -i Makefile.diff "$pkgname-$pkgver/Makefile" || return 1
  cd "$startdir/src/$pkgname-$pkgver"
#  ./configure --prefix=/usr
  make || return 1
  make PREFIX="$startdir/pkg/usr" install || return 1
  /bin/install -c -D -m 755 "$startdir/mtgspoiler" "$startdir/pkg/usr/bin/mtgspoiler" || return 1
  /bin/install -c -D -m 644 "$startdir/mindlessrc" "$startdir/pkg/usr/share/mindless/mindlessrc" || return 1
}

# vim:set ts=2 sw=2 et:
