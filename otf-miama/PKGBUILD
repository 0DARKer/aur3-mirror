# Contributor: feufochmar <feufochmar@d-20.fr>
pkgname=otf-miama
pkgver=1.0
pkgrel=2
pkgdesc="A calligraphic font."
arch=('any')
url="http://openfontlibrary.org/files/fuex/279"
license=('custom:OFL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=miama.install
source=("http://openfontlibrary.org/content/fuex/279/Miama.otf"
        "http://openfontlibrary.org/content/fuex/279/license.txt")

build() {
  cd "$srcdir"
  install -D -m644 license.txt "$pkgdir"/usr/share/licenses/$pkgname/OFL
  mkdir -p  "$pkgdir"/usr/share/fonts/OTF
  install -m644 *.otf "$pkgdir"/usr/share/fonts/OTF/
}

md5sums=('03d4fd6868c3d1cfdf48142b07b4fc4e'
         '05efcca3c00817c7c828d79ebe8b20fe')
